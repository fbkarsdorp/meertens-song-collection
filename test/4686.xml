    <melody>In deze Haagse landouw</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CAlvijn! wat wil <rhyme label="a" type="f">beduy-den</rhyme>//</l>
        <l id="s1:l2" met="3" type="-+">Dat ghy zoo stout <rhyme label="b" type="m">ontkendt</rhyme>//</l>
        <l id="s1:l3" met="3" type="-+">Den Standt der echte <rhyme label="a" type="f" corresp="#s1:l1">luy-den</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Te zijn een <rhyme label="b" type="m" corresp="#s1:l2">Sacrament</rhyme>?</l>
        <l id="s1:l5" met="2" type="-+">Die Paulus <rhyme label="c" type="m">wel</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Op Gods <rhyme label="c" type="m" corresp="#s1:l5">be-vel</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Voor zulks heeft <rhyme label="b" type="m" corresp="#s1:l2">voor-gewend</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Syt ghy belust te <rhyme label="a" type="f">lezen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Zijn woorden waerd en <rhyme label="b" type="m">lief</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Gaet opend ten <rhyme label="a" type="f" corresp="#s2:l1">Ephesen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Den hoog-geleerden <rhyme label="b" type="m" corresp="#s2:l2">brief</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">En zult <rhyme label="c" type="m">aldaer</rhyme>//</l>
        <l id="s2:l6" met="2" type="-+">Bevinden <rhyme label="c" type="m" corresp="#s2:l5">klaer</rhyme>//</l>
        <l id="s2:l7" met="3" type="-+">Mijn zang te wezen <rhyme label="b" type="m" corresp="#s2:l2">waer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Des moet het een van <rhyme label="a" type="f">d’oude</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Gedrukte Bybels <rhyme label="b" type="m">sijn</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Want andersins en <rhyme label="a" type="f" corresp="#s3:l1">zoude</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Noch Vlaming, noch <rhyme label="b" type="m" corresp="#s3:l2">Latijn</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Daer vinden <rhyme label="c" type="m">vant</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Oprecht <rhyme label="c" type="m" corresp="#s3:l5">verstand</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Des Schrifts, de minste <rhyme label="b" type="m" corresp="#s3:l2">schijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Men heeft de Griekze <rhyme label="a" type="f">rede</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die ’t Sacrament <rhyme label="b" type="m">bescheydt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Nae ’t nieu fatçoen doen <rhyme label="a" type="f" corresp="#s4:l1">smeden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Tot een <rhyme label="b" type="m" corresp="#s4:l2">verburgentheyd</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Die d’eelste <rhyme label="c" type="m">glans</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Des Echten <rhyme label="c" type="m" corresp="#s4:l5">bands</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Verdonkerdt, en <rhyme label="b" type="m" corresp="#s4:l2">verspreydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer d’aengeweze <rhyme label="a" type="f">woorden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van Paulus sijn te <rhyme label="b" type="m">klaer</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Des wij van d’oude <rhyme label="a" type="f" corresp="#s5:l1">oorde</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En wijken niet een <rhyme label="b" type="m" corresp="#s5:l2">haer</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Maer houden <rhyme label="c" type="m">met</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Een vast <rhyme label="c" type="m" corresp="#s5:l5">opzet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">De Catholijke <rhyme label="b" type="m" corresp="#s5:l2">wet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En dat tot meerder <rhyme label="a" type="f">eeren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Voorwaer van ’t heilig <rhyme label="b" type="m">Echt</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Daer aen de gunst des <rhyme label="a" type="f" corresp="#s6:l1">Heeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Zijn zegel heeft <rhyme label="b" type="m" corresp="#s6:l2">gehecht</rhyme>;</l>
        <l id="s6:l5" met="2" type="-+">Recht als een <rhyme label="c" type="m">merk</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Van ‘t minne <rhyme label="c" type="m" corresp="#s6:l5">werk</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Bewezen aen zijn <rhyme label="b" type="m" corresp="#s6:l2">Kerk</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer fijn man, wat’s de <rhyme label="a" type="f">rede</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dat die zoo gaerne <rhyme label="b" type="m">wroedt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Tot wellust vande <rhyme label="a" type="f" corresp="#s7:l1">leden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">In ’t nest van vleesch en <rhyme label="b" type="m" corresp="#s7:l2">bloed</rhyme>;</l>
        <l id="s7:l5" met="2" type="-+">Ghy ’t <rhyme label="c" type="m">huw’lijks-bed</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Hebt <rhyme label="c" type="m" corresp="#s7:l5">afgezet</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Van een zoo hogen <rhyme label="b" type="m" corresp="#s7:l2">goed</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wil ik u d’oorzaek <rhyme label="a" type="f">zeggen</rhyme>?</l>
        <l id="s8:l2" met="3" type="-+">’t Is niet dan om den <rhyme label="b" type="m">toom</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Des wellusts, neer te <rhyme label="a" type="f" corresp="#s8:l1">leggen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En ganslijk, zonder <rhyme label="b" type="m" corresp="#s8:l2">schroom</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Te went’len <rhyme label="c" type="m">in</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Het spel van <rhyme label="c" type="m" corresp="#s8:l5">min</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Met uw’ gehele <rhyme label="b" type="m" corresp="#s8:l2">zin</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Want wie werd niet <rhyme label="a" type="f">weerhouwen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Een weynig, door ’t <rhyme label="b" type="m">bemerk</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Van ‘t voorbeeld zijnder <rhyme label="a" type="f" corresp="#s9:l1">trouwen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">In Christo en zijn <rhyme label="b" type="m" corresp="#s9:l2">kerk</rhyme>?</l>
        <l id="s9:l5" met="2" type="-+">Van dit <rhyme label="c" type="m">belet</rhyme></l>
        <l id="s9:l6" met="2" type="-+">Most <rhyme label="c" type="m" corresp="#s9:l5">afgezet</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Sijn van zoo zachten <rhyme label="b" type="m" corresp="#s9:l2">wet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
