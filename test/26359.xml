  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SAlomon een wijs Coninck <rhyme label="a" type="f">rijcke</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ghebruyckte swerelts lusten <rhyme label="b" type="m">planteyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Noyt mensch in weelden zijns <rhyme label="a" type="f" corresp="#s1:l1">ghelijcke</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Maer als hy 't al heeft <rhyme label="b" type="m" corresp="#s1:l2">overleyt</rhyme>,</l>
        <l id="s1:l5" met="5" type="-+">Hy sprack het is al ydelheyt, en <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s1:l5">termijn</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s1:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Laet ons vrolijck houden <rhyme label="a" type="f">feeste</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Verblyden in den Heer onsen <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Want sulcke blyschap in den <rhyme label="a" type="f" corresp="#s2:l1">gheeste</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Is een dierbaer deel ende <rhyme label="b" type="m" corresp="#s2:l2">lot</rhyme>,</l>
        <l id="s2:l5" met="5" type="-+">Jae boven goet en ghelt in pot, of <rhyme label="c" type="m">schrijn</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s2:l5">termijn</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s2:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">T' vrolijck sijn wort seer <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Maer t' weldoen meest bezyden <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">De werelt in haer ydel <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die siet men na svleesch lust en <rhyme label="b" type="m" corresp="#s3:l2">raet</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">Verblyden in haer zondich quaet <rhyme label="c" type="m">fenijn</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s3:l5">termijn</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s3:l5">sijn</rhyme> .</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die wel doet mach hem wel <rhyme label="a" type="f">verblyden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Met een goe consicency <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">T' goede na volghen aen allen <rhyme label="a" type="f" corresp="#s4:l1">zyden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En gheestelijck verheughen <rhyme label="b" type="m" corresp="#s4:l2">groot</rhyme>,</l>
        <l id="s4:l5" met="5" type="-+">Comt over een ghelijck als broot, en <rhyme label="c" type="m">wijn</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s4:l5">termijn</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s4:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wel doen dat is Christum <rhyme label="a" type="f">ghelooven</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Den Sone Godts en zijn heylich <rhyme label="b" type="m">Woort</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maer alvooren weerdighe <rhyme label="a" type="f" corresp="#s5:l1">schooven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Van rechte boete brenghen <rhyme label="b" type="m" corresp="#s5:l2">voort</rhyme>,</l>
        <l id="s5:l5" met="5" type="-+">Trecken in s' Heeren jock accoort, een <rhyme label="c" type="m">lijn</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s5:l5">termijn</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s5:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Het quaet doen sal de Heere <rhyme label="a" type="f">wreken</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Met eeuwich lyden en <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Den quaetdoenders sal hy toe <rhyme label="a" type="f" corresp="#s6:l1">spreken</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Gaet al van my, ick en ken u <rhyme label="b" type="m" corresp="#s6:l2">niet</rhyme>,</l>
        <l id="s6:l5" met="5" type="-+">Als men de Schrift al over siet, <rhyme label="c" type="m">divijn</rhyme>:</l>
        <l id="s6:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s6:l5">termijn</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Dan wel doen en vrolijck <rhyme label="c" type="m" corresp="#s6:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die quaet doen haer is <rhyme label="a" type="f">toegheschreven</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Het eeuwich sterven, druck, angst en <rhyme label="b" type="m">wee</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Maer die goet doen het eeuwich <rhyme label="a" type="f" corresp="#s7:l1">leven</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Joannis vyve, Romeynen <rhyme label="b" type="m" corresp="#s7:l2">twee</rhyme>,</l>
        <l id="s7:l5" met="5" type="-+">Dus om doorvaren dees fel Zee, vol <rhyme label="c" type="m">brijn</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s7:l5">termijn</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s7:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laet ons sober ende <rhyme label="a" type="f">rechtveerdich</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Godtsalich wandelen <rhyme label="b" type="m">ghemeen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Den Euangelio Christi <rhyme label="a" type="f" corresp="#s8:l1">weerdich</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Als die ghewasschen sijn en <rhyme label="b" type="m" corresp="#s8:l2">reen</rhyme>,</l>
        <l id="s8:l5" met="5" type="-+">Niet keeren tot dat slijck als een, vuyl <rhyme label="c" type="m">zwijn</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s8:l5">termijn</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s8:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Laet ons den Heere niet <rhyme label="a" type="f">vergheten</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Deur gheenerley <rhyme label="b" type="m">Afgoderie</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Het sy met drincken of met <rhyme label="a" type="f" corresp="#s9:l1">eten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Toesiende dat ons niet en <rhyme label="b" type="m" corresp="#s9:l2">gheschie</rhyme>,</l>
        <l id="s9:l5" met="5" type="-+">Ghelijck als Israel in de <rhyme label="c" type="m">Woestijn</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s9:l5">termijn</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s9:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Deur disputeren en <rhyme label="a" type="f">argueren</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Wordt niet vermeerdert des Heeren <rhyme label="b" type="m">lof</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Meest elck de ander wil <rhyme label="a" type="f" corresp="#s10:l1">blameren</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Hem quelt den balck en siet het <rhyme label="b" type="m" corresp="#s10:l2">stof</rhyme>,</l>
        <l id="s10:l5" met="5" type="-+">Wat baet sulcke geveystheyt of quaet <rhyme label="c" type="m">schijn</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s10:l5">termijn</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s10:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Neemt my ten besten doch dit <rhyme label="a" type="f">singhen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">T' is om verlichten elcx herte <rhyme label="b" type="m">zwaer</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Want die Menschen in vele <rhyme label="a" type="f" corresp="#s11:l1">dinghen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Becommert sijn t' blijckt <rhyme label="b" type="m" corresp="#s11:l2">openbaar</rhyme></l>
        <l id="s11:l5" met="5" type="-+">Nochtans siet een is noodich maer, ten <rhyme label="c" type="m">fijn</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Niet en is beter in elck <rhyme label="c" type="m" corresp="#s11:l5">termijn</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Dan weldoen en vrolijck <rhyme label="c" type="m" corresp="#s11:l5">sijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
