    <tags/>
    <melody>Het glas van mijn geneugte</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">T’Is waer Calvijn <rhyme label="a" type="m">bekend</rhyme></l>
        <l id="s1:l2" met="2" type="-+">De <rhyme label="b" type="f">erref-zonde</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Maer even wel zoo <rhyme label="a" type="m" corresp="#s1:l1">schendt</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Hy door zijn <rhyme label="b" type="f" corresp="#s1:l2">vonden</rhyme></l>
        <l id="s1:l5" met="5" type="-+">zoo menig zieltje vande <rhyme label="c" type="f">versch-geboren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">’t Welk by gebrek van <rhyme label="d" type="m">Doop</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hy buyten alle <rhyme label="d" type="m" corresp="#s1:l6">hoop</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Doet gaen <rhyme label="c" type="f" corresp="#s1:l5">verloren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zijn grond, is dat het <rhyme label="a" type="m">zaed</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Van die <rhyme label="b" type="f">geloven</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In Christo, vroug noch <rhyme label="a" type="m" corresp="#s2:l1">laet</rhyme></l>
        <l id="s2:l4" met="2" type="-+">En werd <rhyme label="b" type="f" corresp="#s2:l2">verschoven</rhyme>.</l>
        <l id="s2:l5" met="5" type="-+">Zoo dat den zegen Goods hen heeft <rhyme label="c" type="f">getekend</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Voor Doopsel, en voor <rhyme label="d" type="m">Vont</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En geenderhande <rhyme label="d" type="m" corresp="#s2:l6">zond</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Hen toe en <rhyme label="c" type="f" corresp="#s2:l5">rekend</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ach! een bedekte <rhyme label="a" type="m">kunst</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Der Helscher <rhyme label="b" type="f">wallen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Om uitte Christen <rhyme label="a" type="m" corresp="#s3:l1">gunst</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Te doen <rhyme label="b" type="f" corresp="#s3:l2">vervallen</rhyme></l>
        <l id="s3:l5" met="5" type="-+">d’Onnos’le jeugd; die, zonder <rhyme label="c" type="f">weergeboorte</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ghescheyden uit dit <rhyme label="d" type="m">dal</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Gesloten vinden <rhyme label="d" type="m" corresp="#s3:l6">zal</rhyme></l>
        <l id="s3:l8" met="2" type="-+">De hoge <rhyme label="c" type="f" corresp="#s3:l5">poorten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Want alles wat uit <rhyme label="a" type="m">vleesch</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Oit werd <rhyme label="b" type="f">geboren</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ook vleesch is, naer ik <rhyme label="a" type="m" corresp="#s4:l1">lees</rhyme>.</l>
        <l id="s4:l4" met="2" type="-+">Iae ’t <rhyme label="b" type="f" corresp="#s4:l2">uitverkoren</rhyme></l>
        <l id="s4:l5" met="5" type="-+">En ’t uitgeleze vat, dee zelfs ons <rhyme label="c" type="f">horen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat van natuiren <rhyme label="d" type="m">aerd</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Hy ook een kind <rhyme label="d" type="m" corresp="#s4:l6">gebaerd</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Was van Goods <rhyme label="c" type="f" corresp="#s4:l5">toren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die efter van, end’ <rhyme label="a" type="m">uit</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Geloofs <rhyme label="b" type="f">gezinden</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Getrokken had zijn <rhyme label="a" type="m" corresp="#s5:l1">spruit</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Zoo wy <rhyme label="b" type="f" corresp="#s5:l2">bevinden</rhyme>.</l>
        <l id="s5:l5" met="5" type="-+">Doch d’oorzaek hier van is, dat Godes <rhyme label="c" type="f">zegen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Niet van het vleesich <rhyme label="d" type="m">zaed</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Maer van ’t geloof <rhyme label="d" type="m" corresp="#s5:l6">vervaet</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Word, en <rhyme label="c" type="f" corresp="#s5:l5">verkregen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hier toe ist Christen <rhyme label="a" type="m">bad</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Voor al van <rhyme label="b" type="f">node</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Want, leyder, zonder <rhyme label="a" type="m" corresp="#s6:l1">dat</rhyme></l>
        <l id="s6:l4" met="2" type="-+">En kunnen <rhyme label="b" type="f" corresp="#s6:l2">Gode</rhyme></l>
        <l id="s6:l5" met="5" type="-+">Niet werden ingelijft de tere <rhyme label="c" type="f">jaren</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Maer ’t is alleen den <rhyme label="d" type="m">doop</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Daer zy geloof, en <rhyme label="d" type="m" corresp="#s6:l6">hoop</rhyme></l>
        <l id="s6:l8" met="2" type="-+">En minn’ door <rhyme label="c" type="f" corresp="#s6:l5">garen</rhyme>.</l>
      </lg>
    </lg>
  </text>
