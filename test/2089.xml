  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">VErandert <rhyme label="a" type="m">u</rhyme></l>
        <l id="s1:l2" met="4" type="-+">O Heer in alderley <rhyme label="b" type="f">figuren</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Altydt sal uw' liefde <rhyme label="b" type="f" corresp="#s1:l2">duren</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">U soet <rhyme label="c" type="m">aen-schyn</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Sal my ô lieven <rhyme label="d" type="f">JESU</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Altydt even minsaem <rhyme label="c" type="m" corresp="#s1:l4">zyn</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Aenschouw ick in het <rhyme label="e" type="f">midden</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Der Kribb', uw' <rhyme label="f" type="m">Majesteyt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">'k Sal daer de liefd' <rhyme label="e" type="f" corresp="#s1:l7">aenbidden</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Die uyt liefde <rhyme label="f" type="m" corresp="#s1:l8">schreyt</rhyme>;</l>
        <l id="s1:l11" met="4" type="+-">Op elck stroyken staet <rhyme label="g" type="f">geschreven</rhyme>,</l>
        <l id="s1:l12" met="2" type="+-">Dat dit <rhyme label="f" type="m" corresp="#s1:l8">Kindt</rhyme></l>
        <l id="s1:l13" met="2" type="-+">Den mensch <rhyme label="f" type="m" corresp="#s1:l8">bemindt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">O <rhyme label="a" type="m">JESUKEN</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Als ghy light aen Marias <rhyme label="b" type="f">borsten</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Doet ghy my naer liefde <rhyme label="b" type="f" corresp="#s2:l2">dorsten</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Dat wit soet <rhyme label="c" type="m">Melck</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Treckt, en verweckt de <rhyme label="d" type="f">liefde</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En den appetyt van <rhyme label="c" type="m" corresp="#s2:l4">elck</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Vind' ick u in den <rhyme label="e" type="f">Tempel</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Daer gheeft gy my een <rhyme label="f" type="m">leer</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Hoe ick naer u <rhyme label="e" type="f" corresp="#s2:l7">exempel</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Altydt meer, en <rhyme label="f" type="m" corresp="#s2:l8">meer</rhyme></l>
        <l id="s2:l11" met="4" type="+-">Met de wercken, moet <rhyme label="g" type="f">verstercken</rhyme></l>
        <l id="s2:l12" met="2" type="+-">'t <rhyme label="f" type="m" corresp="#s2:l8">Minne-vier</rhyme></l>
        <l id="s2:l13" met="2" type="-+">In hert, en <rhyme label="f" type="m" corresp="#s2:l8">nier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Tot <rhyme label="a" type="m">Nazareth</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Daer sal my uw' verborghen <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s3:l3" met="4" type="+-">In de liefde voedtsel <rhyme label="b" type="f" corresp="#s3:l2">gheven</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Als ghy my <rhyme label="c" type="m">jondt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">In d'eenigheydt uw <rhyme label="d" type="f">aenschyn</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Daer ghy my spreckt mondt aen <rhyme label="c" type="m" corresp="#s3:l4">mondt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Wanneer ick u sien <rhyme label="e" type="f">wercken</rhyme></l>
        <l id="s3:l8" met="3" type="-+">In Iosephs <rhyme label="f" type="m">timmer-huys</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Gaet gy myn vier <rhyme label="e" type="f" corresp="#s3:l7">verstercken</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Als ghy peyst op 't <rhyme label="f" type="m" corresp="#s3:l8">Kruys</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Daer ghy eens sult naeckt aen <rhyme label="g" type="f">sterven</rhyme>,</l>
        <l id="s3:l12" met="2" type="+-">En <rhyme label="f" type="m" corresp="#s3:l8">voldoen</rhyme></l>
        <l id="s3:l13" met="2" type="-+">Voor ons <rhyme label="f" type="m" corresp="#s3:l8">rantsoen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Als ick u <rhyme label="a" type="m">Heer'</rhyme></l>
        <l id="s4:l2" met="4" type="-+">In 't heyligh Sacrament magh <rhyme label="b" type="f">nutten</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Kan ick dan myn' liefde <rhyme label="b" type="f" corresp="#s4:l2">stutten</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Die onder 't <rhyme label="c" type="m">broodt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dat ick nut aen uw' <rhyme label="d" type="f">Tafel</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">'t Vier ontfangh in mynen <rhyme label="c" type="m" corresp="#s4:l4">schoot</rhyme>?</l>
        <l id="s4:l7" met="3" type="-+">Sien ick u 't Kruys <rhyme label="e" type="f">draghen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">'t Pack wort door liefde <rhyme label="f" type="m">soet</rhyme>:</l>
        <l id="s4:l9" met="3" type="-+">Wordy aen 't Kruys <rhyme label="e" type="f" corresp="#s4:l7">gheslagen</rhyme>,</l>
        <l id="s4:l10" met="3" type="+-">Sterfdy in uw <rhyme label="f" type="m" corresp="#s4:l8">Bloedt</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Soo besproeydy weêr myn <rhyme label="g" type="f">liefde</rhyme></l>
        <l id="s4:l12" met="2" type="+-">Door den <rhyme label="f" type="m" corresp="#s4:l8">vloedt</rhyme></l>
        <l id="s4:l13" met="2" type="-+">Van uw root <rhyme label="f" type="m" corresp="#s4:l8">Bloedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Sien ick ô <rhyme label="a" type="m">Heer'</rhyme>!</l>
        <l id="s5:l2" met="4" type="-+">Een' lancie in uw' Zyde <rhyme label="b" type="f">steken</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Die u 't hert komt open <rhyme label="b" type="f" corresp="#s5:l2">breken</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Dan gaen ick <rhyme label="c" type="m">in</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Uw' open Zyde <rhyme label="d" type="f">woonen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En daer berst myn hert van <rhyme label="c" type="m" corresp="#s5:l4">min</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">O my nen soetsten <rhyme label="e" type="f">Heer'</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Ghy komt van alle <rhyme label="f" type="m">kant</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Hoe ick u wend', oft <rhyme label="e" type="f" corresp="#s5:l7">keer'</rhyme></l>
        <l id="s5:l10" met="3" type="+-">Voeden mynen <rhyme label="f" type="m" corresp="#s5:l8">brandt</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Soeten JESU ghy zyt <rhyme label="g" type="f">altydt</rhyme></l>
        <l id="s5:l12" met="2" type="+-"><rhyme label="f" type="m" corresp="#s5:l8">Vriendelyck</rhyme>,</l>
        <l id="s5:l13" met="2" type="-+">en <rhyme label="f" type="m" corresp="#s5:l8">minnelyck</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
