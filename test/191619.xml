    <melody>Laat je kinders kruien leren</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SChoone! die myn hert en <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En myn geest weet <rhyme label="a" type="f" corresp="#s1:l1">t'overwinnen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Door uw vroome en <rhyme label="b" type="m">zedigheid</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ben ik gansch myn Vryheid <rhyme label="b" type="m" corresp="#s1:l3">quyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ach wilt met genadige <rhyme label="a" type="f">ooren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Eens myn smeekinge <rhyme label="a" type="f" corresp="#s2:l1">verhoren</rhyme>!</l>
        <l id="s2:l3" met="4" type="+-">En myn zugten en <rhyme label="b" type="m">getraan</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Met uwe gunste gunste nemen <rhyme label="b" type="m" corresp="#s2:l3">aan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Laat ik tog die vreugt <rhyme label="a" type="f">verwerven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Of ik moet al quynend <rhyme label="a" type="f" corresp="#s3:l1">sterven</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat ik vry van druk en <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Mag uw Slaaf en Dienaar <rhyme label="b" type="m" corresp="#s3:l3">zyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Kan ik eens die gunst <rhyme label="a" type="f">verwagten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Waar zal ik dan niet naar <rhyme label="a" type="f" corresp="#s4:l1">tragten</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Uwen wil my <rhyme label="b" type="m">voorgezet</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Zal verstrekken tot een <rhyme label="b" type="m" corresp="#s4:l3">Wet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">'k Zal, 'k belooft u zonder <rhyme label="a" type="f">liegen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Ras op uw' beveelen <rhyme label="a" type="f" corresp="#s5:l1">vliegen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Kryg ik tot troost van myn <rhyme label="b" type="m">smert</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Slegts een plaasje by uw <rhyme label="b" type="m" corresp="#s5:l3">hert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Toon dan bid ik <rhyme label="a" type="f">meededogen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">En weest met uw slaaf <rhyme label="a" type="f" corresp="#s6:l1">bewogen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Laat hy uit uw lieve <rhyme label="b" type="m">Mond</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Heeling horen voor zyn <rhyme label="b" type="m" corresp="#s6:l3">wond</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ach! laat my die gunst <rhyme label="a" type="f">erlangen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">En van u een Kus <rhyme label="a" type="f" corresp="#s7:l1">ontfangen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Ook genieten uw <rhyme label="b" type="m">genaâ</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Mag ik schoone? 'k bid zegt <rhyme label="b" type="m" corresp="#s7:l3">Jaâ</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
