  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AEnhoort wat ick v <rhyme label="a" type="f">singhe</rhyme></l>
        <l id="s1:l2" met="3" type="-+">O Maechdelijck <rhyme label="b" type="m">iuweel</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die schoonheyt <rhyme label="a" type="f" corresp="#s1:l1">sonderlinghe</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van ‘themelsche <rhyme label="b" type="m" corresp="#s1:l2">prieel</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Om mede te <rhyme label="c" type="f">verwecken</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">V hert’ en uwen <rhyme label="d" type="m">moet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">V sinnekens te <rhyme label="c" type="f" corresp="#s1:l5">trecken</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Naer Iesus liefde <rhyme label="d" type="m" corresp="#s1:l6">soet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat zijn doch v klaer <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In d’aensicht schoon <rhyme label="b" type="m">gheprent</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En ‘tgracieus <rhyme label="a" type="f" corresp="#s2:l1">vertooghen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van al v leden <rhyme label="b" type="m" corresp="#s2:l2">ient</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Och niet dan stof der <rhyme label="c" type="f">aerden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Verlaet v daer op <rhyme label="d" type="m">niet</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">V lichaem kleyn van <rhyme label="c" type="f" corresp="#s2:l5">weerden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Sal drooghen als een <rhyme label="d" type="m" corresp="#s2:l6">riet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Spieghelt v aen die <rhyme label="a" type="f">Roose</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Als sy ontloken <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sy staet een kleyne <rhyme label="a" type="f" corresp="#s3:l1">poose</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Haer schoonheyt haest <rhyme label="b" type="m" corresp="#s3:l2">vergaet</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Soo sullen oock <rhyme label="c" type="f">verdwijnen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Dijn wancxkens door de <rhyme label="d" type="m">doot</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die ghy hebt met veel <rhyme label="c" type="f" corresp="#s3:l5">pijnen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ghehouden klaer en <rhyme label="d" type="m" corresp="#s3:l6">root</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer is v siel van <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ende dijns herten <rhyme label="b" type="m">gront</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Met hemelsch vierich <rhyme label="a" type="f" corresp="#s4:l1">minnen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Seer lieffelijck <rhyme label="b" type="m" corresp="#s4:l2">deur-wont</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Ghy sult hier dus <rhyme label="c" type="f">verweruen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Godts graci’ met <rhyme label="d" type="m">ootmoet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Hier naermaels oock <rhyme label="c" type="f" corresp="#s4:l5">be-eruen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Godts rijck’ en d’eeuwich <rhyme label="d" type="m" corresp="#s4:l6">goet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gheeft gheensins v <rhyme label="a" type="f">ghedachten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Tot een liedt <rhyme label="b" type="m">heretijck</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Oft een vol ydel <rhyme label="a" type="f" corresp="#s5:l1">klachten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">‘Twerelts ianckers <rhyme label="b" type="m" corresp="#s5:l2">ghelijck</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Maer singht een liedt met v <rhyme label="c" type="f">vreuchden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En lieffelijck <rhyme label="d" type="m">accoort</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Beweghende tot <rhyme label="c" type="f" corresp="#s5:l5">deuchden</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Volghende Christus <rhyme label="d" type="m" corresp="#s5:l6">woort</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Christus sluyt uyt zijn <rhyme label="a" type="f">percken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">De dwase, die hier <rhyme label="b" type="m">meest</rhyme></l>
        <l id="s6:l3" met="3" type="-+">En eerst te toyen <rhyme label="a" type="f" corresp="#s6:l1">mercken</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Haer lichaem, maer den <rhyme label="b" type="m" corresp="#s6:l2">gheest</rhyme></l>
        <l id="s6:l5" met="3" type="-+">In veel ydel <rhyme label="c" type="f">behaghen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Laten van deuchden <rhyme label="d" type="m">bloot</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Sy sullen ’t noch <rhyme label="c" type="f" corresp="#s6:l5">beklaghen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Och inden laetsten <rhyme label="d" type="m" corresp="#s6:l6">noot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die hier mint een <rhyme label="a" type="f">verblijden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In leuen <rhyme label="b" type="m">heylichlick</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En in zijn ionghe <rhyme label="a" type="f" corresp="#s7:l1">tijden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Maeckt daer van oock sijn <rhyme label="b" type="m" corresp="#s7:l2">stick</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Om Godt eeren en <rhyme label="c" type="f">louen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Met een herte <rhyme label="d" type="m">verdult</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die sal krijghen hier <rhyme label="c" type="f" corresp="#s7:l5">bouen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Een kroone schoon’ <rhyme label="d" type="m" corresp="#s7:l6">vergult</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Soo dan ghy maechden <rhyme label="a" type="f">reene</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Sluyt dit in’t herte <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Waer dat ghy zijt <rhyme label="a" type="f" corresp="#s8:l1">alleene</rhyme></l>
        <l id="s8:l4" met="3" type="-+">(Ten is toch gheen swaer <rhyme label="b" type="m" corresp="#s8:l2">last</rhyme>)</l>
        <l id="s8:l5" met="3" type="-+">Verciert soo v <rhyme label="c" type="f">lichame</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Brenght uwen tijdt soo <rhyme label="d" type="m">uyt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Dat ghy meucht zijn <rhyme label="c" type="f" corresp="#s8:l5">bequaeme</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Om te zijn Iesus <rhyme label="d" type="m" corresp="#s8:l6">bruyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
