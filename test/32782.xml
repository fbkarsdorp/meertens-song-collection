    <melody>Schoonste nimf van het woud</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">COmt Christen zielen inden <rhyme label="a" type="m">geest</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Minst en <rhyme label="a" type="m" corresp="#s1:l1">meest</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">V Heere roept u met <rhyme label="b" type="f">verlanghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ter maeltijt daer sijn vleesch en <rhyme label="c" type="m">bloet</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Spijst en <rhyme label="c" type="m" corresp="#s1:l4">vloet</rhyme>.</l>
        <l id="s1:l6" met="4" type="-+">Al die hem begheert te <rhyme label="b" type="f" corresp="#s1:l3">ontfanghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo ghy u kent in sonden <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Die <rhyme label="a" type="m" corresp="#s2:l1">verlaet</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Want niet besmet mach hem <rhyme label="b" type="f">ghenaken</rhyme></l>
        <l id="s2:l4" met="4" type="-+">V sonden hy u niet <rhyme label="c" type="m">vercleent</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Maer <rhyme label="c" type="m" corresp="#s2:l4">beweent</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En spreeckt u bicht voor alle <rhyme label="b" type="f" corresp="#s2:l3">saecken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In u gheloove twijffelt <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Als ghy <rhyme label="a" type="m" corresp="#s3:l1">siet</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Des broots ghedaente voor u <rhyme label="b" type="f">ooghen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">t'Is Christi lichaem, nae Gods <rhyme label="c" type="m">woort</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Dat ghy <rhyme label="c" type="m" corresp="#s3:l4">hoort</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Soo dat hier niemant wort <rhyme label="b" type="f" corresp="#s3:l3">bedroghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Merckt nu wel aen o ziel, wat <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Godt u <rhyme label="a" type="m" corresp="#s4:l1">doet</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Dus gaet tot hem niet sonder <rhyme label="b" type="f">schromen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En seght: O Heer! Die ghy dus <rhyme label="c" type="m">eert</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Is niet <rhyme label="c" type="m" corresp="#s4:l4">weert</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dat ghy onder sijn dack sult <rhyme label="b" type="f" corresp="#s4:l3">komen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De liefde voorts in u <rhyme label="a" type="m">verweckt</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Die u <rhyme label="a" type="m" corresp="#s5:l1">treckt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Om t' ontfaen den Heer der <rhyme label="b" type="f">Heeren</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Ontsteeckt in u een soeten <rhyme label="c" type="m">brandt</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Dit is't <rhyme label="c" type="m" corresp="#s5:l4">pandt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Dat hy hem tot u huys wil <rhyme label="b" type="f" corresp="#s5:l3">keeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ten minsten naer der <rhyme label="a" type="m">middernacht</rhyme></l>
        <l id="s6:l2" met="2" type="+-">V doch <rhyme label="a" type="m" corresp="#s6:l1">wacht</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dat ghy geen spijs, oft dranck neemt <rhyme label="b" type="f">binnen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Op dat ghy heel ter selfer <rhyme label="c" type="m">tijt</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Nuchter <rhyme label="c" type="m" corresp="#s6:l4">zijt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Als ghy ontfanckt u Godt vol <rhyme label="b" type="f" corresp="#s6:l3">minnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
