    <melody>Une fille de village</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ZOndig mensche! gaet te <rhyme label="a" type="f">Gode</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hem alleen uw’ zonden <rhyme label="b" type="m">biecht</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Voor de Paep, is’t niet van <rhyme label="a" type="f" corresp="#s1:l1">noode</rhyme></l>
        <l id="s1:l4" met="4" type="+-">VVant zijn handel spreekt en <rhyme label="b" type="m" corresp="#s1:l2">liegt</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Tegen God en Goods <rhyme label="c" type="f">vermeugen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Die zoo zaen een zon-daer <rhyme label="d" type="m">slechts</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Komt te zuchten, niet meer <rhyme label="c" type="f" corresp="#s1:l5">heugen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Zal d’onhebb’lijkheid zijns <rhyme label="d" type="m" corresp="#s1:l6">knechts</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dit ist eigen woord des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Daermen tot volmaekt <rhyme label="b" type="m">verzoen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Om den zondaer te <rhyme label="a" type="f" corresp="#s2:l1">bekeren</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Af noch by en hoordt te <rhyme label="b" type="m" corresp="#s2:l2">doen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Fijnen broeder! wildyt <rhyme label="c" type="f">zuchten</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Zoo veel schrijven toe, zoo <rhyme label="d" type="m">laet</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Voordaen varen all’ de <rhyme label="c" type="f" corresp="#s2:l5">tuchten</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Hoop, Geloof, en <rhyme label="d" type="m" corresp="#s2:l6">Caritaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Om wat scharper dan te <rhyme label="a" type="f">slijpen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Vw’ verstand voordaen, zoo <rhyme label="b" type="m">past</rhyme></l>
        <l id="s3:l3" met="4" type="+-">In ’t verzuchten te <rhyme label="a" type="f" corresp="#s3:l1">begrijpen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Al wat Christus heeft <rhyme label="b" type="m" corresp="#s3:l2">belast</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Dit doen ons de Texten <rhyme label="c" type="f">blijken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">In den Doop; waerom dan <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s3:l7" met="4" type="+-">In de biecht ook van <rhyme label="c" type="f" corresp="#s3:l5">gelijken</rhyme>;</l>
        <l id="s3:l8" met="4" type="+-">Die men ook geboden <rhyme label="d" type="m" corresp="#s3:l6">ziet</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vraegdy waerz’ ons is <rhyme label="a" type="f">bevolen</rhyme>?</l>
        <l id="s4:l2" met="4" type="+-">Daer den Heer ’t vermogen <rhyme label="b" type="m">gaf</rhyme></l>
        <l id="s4:l3" met="4" type="+-">d’Eerste meesters zijnder <rhyme label="a" type="f" corresp="#s4:l1">scholen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Ons tot graty, of tot <rhyme label="b" type="m" corresp="#s4:l2">straf</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">’t Sy te binden, ‘t sy <rhyme label="c" type="f">t’ontbinden</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">Zoukt te recht, maer lieve <rhyme label="d" type="m">man</rhyme>!</l>
        <l id="s4:l7" met="4" type="+-">En ghy zult den Text wel <rhyme label="c" type="f" corresp="#s4:l5">vinden</rhyme></l>
        <l id="s4:l8" met="4" type="+-">By Matheus en <rhyme label="d" type="m" corresp="#s4:l6">Iohan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Iae daer by; wien ghy <rhyme label="a" type="f">vergeven</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Ofte wederhouden <rhyme label="b" type="m">zult</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Op der aerd’, het zondig <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Zal den Hemel, of <rhyme label="b" type="m" corresp="#s5:l2">geduld</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Of verbolgentheyd <rhyme label="c" type="f">vergelden</rhyme>.</l>
        <l id="s5:l6" met="4" type="+-">Ziet hier eens, o fijne <rhyme label="d" type="m">lien</rhyme>!</l>
        <l id="s5:l7" met="4" type="+-">Hoe den Heer den zondaer <rhyme label="c" type="f" corresp="#s5:l5">stelde</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Voor den Priester, op de <rhyme label="d" type="m" corresp="#s5:l6">knien</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Voor den Priester, als een <rhyme label="a" type="f">rechter</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Om het hoog <rhyme label="b" type="m">appointement</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Uit te spreken; maer veel <rhyme label="a" type="f" corresp="#s6:l1">hechter</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Als een Konings <rhyme label="b" type="m" corresp="#s6:l2">Parlement</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Zoo dat zijn bediend’ <rhyme label="c" type="f">officy</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Voor de strenge vierschaer <rhyme label="d" type="m">Goods</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Stellen zou een <rhyme label="c" type="f" corresp="#s6:l5">prejudicy</rhyme></l>
        <l id="s6:l8" met="4" type="+-">’t Sy des levens, ’t sy des <rhyme label="d" type="m" corresp="#s6:l6">doods</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hier uit volgt, met vaste <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Dat de zonde, niet <rhyme label="b" type="m">alleen</rhyme></l>
        <l id="s7:l3" met="4" type="+-">In ’t gemeyn moet sijn <rhyme label="a" type="f" corresp="#s7:l1">beleden</rhyme>;</l>
        <l id="s7:l4" met="4" type="+-">Maer bescheid’lijk een voor <rhyme label="b" type="m" corresp="#s7:l2">een</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Om naer onderzouk van <rhyme label="c" type="f">zaken</rhyme></l>
        <l id="s7:l6" met="4" type="+-">(Zulks naer rechten is van <rhyme label="d" type="m">doen</rhyme>)</l>
        <l id="s7:l7" met="4" type="+-">Pertinente staet te <rhyme label="c" type="f" corresp="#s7:l5">maken</rhyme></l>
        <l id="s7:l8" met="4" type="+-">’t Sy van ban, het sy van <rhyme label="d" type="m" corresp="#s7:l6">zoen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Iesu Heer! dat <rhyme label="a" type="f">uw’genade</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Zonder eynd gepreze <rhyme label="b" type="m">sy</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">Die t’verzoen van mijn <rhyme label="a" type="f" corresp="#s8:l1">misdaden</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Hebt gesteldt aen my <rhyme label="b" type="m" corresp="#s8:l2">bely</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Gunt my dan mijn biecht te <rhyme label="c" type="f">spreken</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Altijd met een ware <rhyme label="d" type="m">mond</rhyme>:</l>
        <l id="s8:l7" met="4" type="+-">Willig om met boet te <rhyme label="c" type="f" corresp="#s8:l5">wreken</rhyme></l>
        <l id="s8:l8" met="4" type="+-">’t Misbruyk van mijn zware <rhyme label="d" type="m" corresp="#s8:l6">zond</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
