    <melody>Slaapt gij nog mijn welbeminde</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Welkoom, lieve en teedre <rhyme label="a" type="f">kunne</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">Driemaal welkoom in dit <rhyme label="b" type="m">choor</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Nu gij onzer <rhyme label="c" type="f">vriendschapsbede</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Zo genegen leende 't <rhyme label="b" type="m" corresp="#s1:l2">oor</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Ziet, in onzer Broedren <rhyme label="d" type="f">reijen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Minnaars van oprechte <rhyme label="e" type="m">deugd</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Die het voorschrift van de <rhyme label="f" type="f">reden</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Volgen ook in hunne <rhyme label="e" type="m" corresp="#s1:l6">vreugd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">In dit heiligdom der <rhyme label="a" type="f">wijsheid</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Door geen ondeugd ooit <rhyme label="b" type="m">besmet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Is uw kuischheid immer <rhyme label="c" type="f">veilig</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Blijft uw kieschheid <rhyme label="b" type="m" corresp="#s2:l2">onverlet</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Eendragt bindt hier aller <rhyme label="d" type="f">harten</rhyme>.</l>
        <l id="s2:l6" met="4" type="+-">Vrede voert hier 't zacht <rhyme label="e" type="m">gebied</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Liefdaadigheid schenkt <rhyme label="f" type="f">zaligheden</rhyme>.</l>
        <l id="s2:l8" met="4" type="+-">WÃ©lbeminde kalmt <rhyme label="e" type="m" corresp="#s2:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Nog eens: welkoom, teedre <rhyme label="a" type="f">kunne</rhyme>!</l>
        <l id="s3:l2" met="4" type="+-">In ons heilig <rhyme label="b" type="m">tempelchoor</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Driewerf dank, daar ge onze <rhyme label="c" type="f">bede</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Zo genegen leende 't <rhyme label="b" type="m" corresp="#s3:l2">oor</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Tel, met onzer Broedren <rhyme label="d" type="f">reijen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">'t Edelst loon der zuivre <rhyme label="e" type="m">deugd</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Zijt, naar 't voorschrist van de <rhyme label="f" type="f">reden</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Deelgenooten onzer <rhyme label="e" type="m" corresp="#s3:l6">vreugd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
