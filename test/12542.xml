  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SOo Godt Noach vol <rhyme label="a" type="f">betrouwen</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Liet <rhyme label="a" type="f" corresp="#s1:l1">behouwen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">'t Leven uyt des doodts <rhyme label="b" type="m">onspoet</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Soo heeft hy dit landt <rhyme label="c" type="f">gesegent</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">'t Volck <rhyme label="c" type="f" corresp="#s1:l4">bejegent</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Met genaed' in <rhyme label="b" type="m" corresp="#s1:l3">overvloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Waerd' den vroomen Loth voor <rhyme label="a" type="f">schanden</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">En 't <rhyme label="a" type="f" corresp="#s2:l1">verbranden</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Wt Sodoma sonder <rhyme label="b" type="m">boet</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Want die Godt heeft tot sijn <rhyme label="c" type="f">helper</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Droefheydt <rhyme label="c" type="f" corresp="#s2:l4">stelper</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Geenich dinck hem hinder <rhyme label="b" type="m" corresp="#s2:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Daniel in der Leeuwen <rhyme label="a" type="f">kuyle</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Wt haer <rhyme label="a" type="f" corresp="#s3:l1">muyle</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Berghde Godt by 't leven <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Door sijn kracht en stercke <rhyme label="c" type="f">handen</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Hoed' hem <rhyme label="c" type="f" corresp="#s3:l4">vanden</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Wreede Leeuwen dul <rhyme label="b" type="m" corresp="#s3:l3">verwoet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Soo Godt den David <rhyme label="a" type="f">bewaerde</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">En hem <rhyme label="a" type="f" corresp="#s4:l1">spaerde</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Voor den Saul fel <rhyme label="b" type="m">bebloet</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En drie Mannen in den <rhyme label="c" type="f">Oven</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Brandend' <rhyme label="c" type="f" corresp="#s4:l4">loven</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Sijnen name vol <rhyme label="b" type="m" corresp="#s4:l3">ootmoet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Soo heeft Godt sijn reyne <rhyme label="a" type="f">Kercke</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Door een <rhyme label="a" type="f" corresp="#s5:l1">stercke</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Handt, voor 't felle Spaens <rhyme label="b" type="m">gebroet</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Tot sijn lof en naems <rhyme label="c" type="f">vermeeren</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Voor 't <rhyme label="c" type="f" corresp="#s5:l4">verseeren</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Noch bewaert uyt Liefden <rhyme label="b" type="m" corresp="#s5:l3">vroet</rhyme>.</l>
      </lg>
    </lg>
  </text>
