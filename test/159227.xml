  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">JAcobus seyt alsoo wy <rhyme label="a" type="f">lesen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">wie des werelts vrient wil <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Moet Gods vyant zijn, <rhyme label="a" type="f" corresp="#s1:l1">mispresen</rhyme></l>
        <l id="s1:l4" met="2" type="+-">Wel toe <rhyme label="b" type="m">siet</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Of ghy sult comen naer <rhyme label="a" type="f" corresp="#s1:l1">desen</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Int <rhyme label="b" type="m" corresp="#s1:l4">verdriet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">De wetenschap en sal niet <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Het en leyt ooc niet aent <rhyme label="a" type="f" corresp="#s2:l1">praten</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Als ghy gaet Gods woort <rhyme label="a" type="f" corresp="#s2:l1">verlaten</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Och ghy <rhyme label="b" type="m">sult</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">U bringen noch boven <rhyme label="a" type="f" corresp="#s2:l1">maten</rhyme></l>
        <l id="s2:l6" met="2" type="+-">Inde <rhyme label="b" type="m" corresp="#s2:l4">schult</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gy weet so wel des Heeren <rhyme label="a" type="f">wille</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En om eenigen <rhyme label="a" type="f" corresp="#s3:l1">geschille</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">So wilt ghy u houden <rhyme label="a" type="f" corresp="#s3:l1">stille</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Sijt dit <rhyme label="b" type="m">vroet</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Naer Gods woort weynich of <rhyme label="a" type="f" corresp="#s3:l1">vele</rhyme></l>
        <l id="s3:l6" met="2" type="+-">Niet en <rhyme label="b" type="m" corresp="#s3:l4">doet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Christus hielt Nicodemus <rhyme label="a" type="f">vooren</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Dat hy moste zijn <rhyme label="a" type="f" corresp="#s4:l1">herbooren</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Of hy soude gaen <rhyme label="a" type="f" corresp="#s4:l1">verlooren</rhyme></l>
        <l id="s4:l4" met="2" type="+-">Buyten 't <rhyme label="b" type="m">Rijck</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Wilt ghy niet zijn stemme <rhyme label="a" type="f" corresp="#s4:l1">hooren</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Twort <rhyme label="b" type="m" corresp="#s4:l4">gelijck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Al is die Heere vol <rhyme label="a" type="f">genade</rhyme></l>
        <l id="s5:l2" met="4" type="+-">En soeckt niet u siele <rhyme label="a" type="f" corresp="#s5:l1">schade</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Hy en heeft geen lust tot <rhyme label="a" type="f" corresp="#s5:l1">quade</rhyme></l>
        <l id="s5:l4" met="2" type="+-">Maer tot <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Gaet niet met vleesch en bloet te <rhyme label="a" type="f" corresp="#s5:l1">rade</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">In 't <rhyme label="b" type="m" corresp="#s5:l4">gemoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Syrach die gaet <rhyme label="a" type="f">allegieren</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Al wat vleesch en bloet <rhyme label="a" type="f" corresp="#s6:l1">vercieren</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Dat zijn al boose <rhyme label="a" type="f" corresp="#s6:l1">manierern</rhyme></l>
        <l id="s6:l4" met="2" type="+-">Wilt af <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Laet u van Gods geest <rhyme label="a" type="f" corresp="#s6:l1">regieren</rhyme></l>
        <l id="s6:l6" met="2" type="+-">Tsal wel <rhyme label="b" type="m" corresp="#s6:l4">gaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Komt al tot my seyt de <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s7:l2" met="4" type="+-">En doet altijt naer mijn <rhyme label="a" type="f" corresp="#s7:l1">Leere</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Niemants doot ic en <rhyme label="a" type="f" corresp="#s7:l1">begeere</rhyme></l>
        <l id="s7:l4" met="2" type="+-">Maer dat <rhyme label="b" type="m">hy</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Gantsch van herten <rhyme label="a" type="f" corresp="#s7:l1">wederkeere</rhyme></l>
        <l id="s7:l6" met="2" type="+-">Hem tot <rhyme label="b" type="m" corresp="#s7:l4">my</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ghy hoort doch des Heeren <rhyme label="a" type="f">stemme</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Weygert u niet als de <rhyme label="a" type="f" corresp="#s8:l1">slemme</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Dat hy hem niet en <rhyme label="a" type="f" corresp="#s8:l1">vergremme</rhyme></l>
        <l id="s8:l4" met="2" type="+-">Seer <rhyme label="b" type="m">verstoort</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Maer gelijc die schaepkens <rhyme label="a" type="f" corresp="#s8:l1">temme</rhyme>,</l>
        <l id="s8:l6" met="2" type="+-">Gaet so <rhyme label="b" type="m" corresp="#s8:l4">voort</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Het is gewis, gy moet doch <rhyme label="a" type="f">sterven</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Maer diet hier also <rhyme label="a" type="f" corresp="#s9:l1">verkerven</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Dat sy haren wech <rhyme label="a" type="f" corresp="#s9:l1">verderven</rhyme></l>
        <l id="s9:l4" met="2" type="+-">So tvolck <rhyme label="b" type="m">de</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Zullen geen vrydom <rhyme label="a" type="f" corresp="#s9:l1">verwerven</rhyme></l>
        <l id="s9:l6" met="2" type="+-">Met <rhyme label="b" type="m" corresp="#s9:l4">Noe</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Ghy siet de menschen trecken <rhyme label="a" type="f">deure</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Sy en hebben oock geen <rhyme label="a" type="f" corresp="#s10:l1">keure</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Al vallet bitter en <rhyme label="a" type="f" corresp="#s10:l1">seure</rhyme></l>
        <l id="s10:l4" met="2" type="+-">Met <rhyme label="b" type="m">geclach</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Ghy en weet oock tijt noch <rhyme label="a" type="f" corresp="#s10:l1">eure</rhyme></l>
        <l id="s10:l6" met="2" type="+-">Vanden <rhyme label="b" type="m" corresp="#s10:l4">dach</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Hout dit altijt in u <rhyme label="a" type="f">gedachte</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Dat die Heere comt <rhyme label="a" type="f" corresp="#s11:l1">onsachte</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Gelijck eenen dief by <rhyme label="a" type="f" corresp="#s11:l1">nachte</rhyme>,</l>
        <l id="s11:l4" met="2" type="+-">So wie <rhyme label="b" type="m">slaept</rhyme></l>
        <l id="s11:l5" met="4" type="+-">En niet en is inde <rhyme label="a" type="f" corresp="#s11:l1">wachte</rhyme>,</l>
        <l id="s11:l6" met="2" type="+-">Wort <rhyme label="b" type="m" corresp="#s11:l4">betraept</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Dinckt niet ick hebbe vele <rhyme label="a" type="f">Jaren</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Eer my t' ouderdom sal <rhyme label="a" type="f" corresp="#s12:l1">bezwaren</rhyme></l>
        <l id="s12:l3" met="4" type="+-">En daer op u boete <rhyme label="a" type="f" corresp="#s12:l1">sparen</rhyme></l>
        <l id="s12:l4" met="2" type="+-">Tis <rhyme label="b" type="m">abuys</rhyme></l>
        <l id="s12:l5" met="4" type="+-">Ghy moet met Christum <rhyme label="a" type="f" corresp="#s12:l1">vergaren</rhyme></l>
        <l id="s12:l6" met="2" type="+-">In zijn <rhyme label="b" type="m" corresp="#s12:l4">huys</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Die met hem niet en <rhyme label="a" type="f">versamen</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Sullen haer noch moeten <rhyme label="a" type="f" corresp="#s13:l1">schamen</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Als sy verstroyen in <rhyme label="a" type="f" corresp="#s13:l1">blamen</rhyme></l>
        <l id="s13:l4" met="2" type="+-">Seer <rhyme label="b" type="m">onweert</rhyme></l>
        <l id="s13:l5" met="4" type="+-">Geschreven werden haer <rhyme label="a" type="f" corresp="#s13:l1">namen</rhyme></l>
        <l id="s13:l6" met="2" type="+-">In die <rhyme label="b" type="m" corresp="#s13:l4">Eerdt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Of ghy seyt tot u <rhyme label="a" type="f">verstercken</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Ick en doe gheen quade <rhyme label="a" type="f" corresp="#s14:l1">wercken</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Sal die Heere dat niet <rhyme label="a" type="f" corresp="#s14:l1">mercken</rhyme></l>
        <l id="s14:l4" met="2" type="+-">Met <rhyme label="b" type="m">bescheyt</rhyme></l>
        <l id="s14:l5" met="4" type="+-">En aensien in dese <rhyme label="a" type="f" corresp="#s14:l1">percken</rhyme></l>
        <l id="s14:l6" met="2" type="+-">Mijn <rhyme label="b" type="m" corresp="#s14:l4">traecheyt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Dit wil ic u hier op <rhyme label="a" type="f">toogen</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Hoe dat Christum deed <rhyme label="a" type="f" corresp="#s15:l1">verdroogen</rhyme></l>
        <l id="s15:l3" met="4" type="+-">Den Vijgeboom, schoon voor <rhyme label="a" type="f" corresp="#s15:l1">oogen</rhyme></l>
        <l id="s15:l4" met="2" type="+-">Tis geen <rhyme label="b" type="m">klucht</rhyme></l>
        <l id="s15:l5" met="4" type="+-">Weynich dat de boomen <rhyme label="a" type="f" corresp="#s15:l1">doogen</rhyme></l>
        <l id="s15:l6" met="2" type="+-">Sonder <rhyme label="b" type="m" corresp="#s15:l4">vrucht</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Prins vreest God sonder <rhyme label="a" type="f">vergeten</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Ende en blijft soo niet <rhyme label="a" type="f" corresp="#s16:l1">versleten</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Soo sult ghy u ruste <rhyme label="a" type="f" corresp="#s16:l1">weten</rhyme></l>
        <l id="s16:l4" met="2" type="+-">In u <rhyme label="b" type="m">deel</rhyme></l>
        <l id="s16:l5" met="4" type="+-">So seyt Godt tot den <rhyme label="a" type="f" corresp="#s16:l1">Propheten</rhyme></l>
        <l id="s16:l6" met="2" type="+-"><rhyme label="b" type="m" corresp="#s16:l4">Daniel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
