  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">TRouwste Vrind der <rhyme label="a" type="f">zielen</rhyme>!</l>
        <l id="s1:l2" met="3" type="+-">Hert vol zuivre <rhyme label="b" type="f">liefde</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Wien alleen onz' armoê <rhyme label="b" type="f" corresp="#s1:l2">griefde</rhyme>.</l>
        <l id="s1:l4" met="3" type="+-">Want, waar is dog <rhyme label="c" type="f">yemand</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Die zou zeggen <rhyme label="d" type="f">konnen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dat de Liefd' by hem <rhyme label="d" type="f" corresp="#s1:l5">begonnen</rhyme>?</l>
        <l id="s1:l7" met="4" type="+-">Of wiens geest, is <rhyme label="e" type="m">geweest</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Van U <rhyme label="f" type="f">ingenomen</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Eer Gy waart <rhyme label="f" type="f" corresp="#s1:l8">gekomen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">O! men moet <rhyme label="a" type="f">verstommen</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Als wy regt <rhyme label="b" type="f">bezinnen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hoe Gy ons zo kont <rhyme label="b" type="f" corresp="#s2:l2">beminnen</rhyme>!</l>
        <l id="s2:l4" met="3" type="+-">Hoe Gy, zaalig <rhyme label="c" type="f">Weezen</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Heilig zynd' en <rhyme label="d" type="f">reine</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En de sterke God <rhyme label="d" type="f" corresp="#s2:l5">alleine</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">U bemoeit, vlamt en <rhyme label="e" type="m">gloeit</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Menschen op te <rhyme label="f" type="f">zoeken</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Die U schandlyk <rhyme label="f" type="f" corresp="#s2:l8">vloeken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Want dit is in <rhyme label="a" type="f">waarheit</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Onzer aller <rhyme label="b" type="f">waarde</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die hier leeven op der <rhyme label="b" type="f" corresp="#s3:l2">aarde</rhyme>.</l>
        <l id="s3:l4" met="3" type="+-">Dat was U de <rhyme label="c" type="f">reeden</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Dat heeft u <rhyme label="d" type="f">gedreeven</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">'t Leeven voor ons heen te <rhyme label="d" type="f" corresp="#s3:l5">geeven</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Werpt U neêr, voor uw <rhyme label="e" type="m">Heer</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Met een grondig <rhyme label="f" type="f">buigen</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Zielen! Gy <rhyme label="f" type="f" corresp="#s3:l8">Getuigen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Is het anders <rhyme label="a" type="f">moog'lyk</rhyme>?</l>
        <l id="s4:l2" met="3" type="+-">Zouden <rhyme label="b" type="f">d'ingewanden</rhyme></l>
        <l id="s4:l3" met="4" type="+-">By een Liefdegloed niet <rhyme label="b" type="f" corresp="#s4:l2">branden</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Als wy U <rhyme label="c" type="f">genaaken</rhyme>?</l>
        <l id="s4:l5" met="3" type="+-">Neen, het hart moet <rhyme label="d" type="f">breeken</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Smelten in zyn <rhyme label="d" type="f" corresp="#s4:l5">traane-beeken</rhyme>.</l>
        <l id="s4:l7" met="4" type="+-">O gy Lam! <rhyme label="e" type="m">wonderzaam</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Is uw <rhyme label="f" type="f">Liefdes-neigen</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">'t Aardsch vernuft moet <rhyme label="f" type="f" corresp="#s4:l8">swygen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Dog de Eenvoud <rhyme label="a" type="f">stamelt</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">En de kleine <rhyme label="b" type="f">zielen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Konnen yets daarvan <rhyme label="b" type="f" corresp="#s5:l2">verhaalen</rhyme>.</l>
        <l id="s5:l4" met="3" type="+-">Alle arme <rhyme label="c" type="f">Zondaars</rhyme></l>
        <l id="s5:l5" met="3" type="+-">Konnen het <rhyme label="d" type="f">beschryven</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Alle die in d'armoê <rhyme label="d" type="f" corresp="#s5:l5">blyven</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Kennen 't goed', dat Gy <rhyme label="e" type="m">doet</rhyme>.</l>
        <l id="s5:l8" met="3" type="+-">Deeze konnen <rhyme label="f" type="f">roemen</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">En U Liefde <rhyme label="f" type="f" corresp="#s5:l8">noemen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Dit is haar <rhyme label="a" type="f">versterking</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Als zy zyn <rhyme label="b" type="f">neerslagtig</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En de Zond' is sterk en <rhyme label="b" type="f" corresp="#s6:l2">machtig</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Dat Gy hen <rhyme label="c" type="f">verkooren</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">En hen hebt gaan <rhyme label="d" type="f">zoeken</rhyme></l>
        <l id="s6:l6" met="4" type="+-">In hun' allersnoodste <rhyme label="d" type="f" corresp="#s6:l5">hoeken</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Nu zy dan tot U <rhyme label="e" type="m">gaan</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">Zoudt Gy nu hen <rhyme label="f" type="f">haaten</rhyme>,</l>
        <l id="s6:l9" met="3" type="+-">Of hen steeken <rhyme label="f" type="f" corresp="#s6:l8">laaten</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Neen, ô Hart vol <rhyme label="a" type="f">trouwe</rhyme>!</l>
        <l id="s7:l2" met="3" type="+-">Gy zult alles <rhyme label="b" type="f">maaken</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Gy zult zelver voor ons <rhyme label="b" type="f" corresp="#s7:l2">waaken</rhyme>.</l>
        <l id="s7:l4" met="3" type="+-">Uw' gekochte <rhyme label="c" type="f">zielen</rhyme></l>
        <l id="s7:l5" met="3" type="+-">Weet Gy te <rhyme label="d" type="f">bewaaren</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Voor zoo meen'gerley <rhyme label="d" type="f" corresp="#s7:l5">gevaaren</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Leeuw en Beyr, Satans <rhyme label="e" type="m">heyr</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Mag uw Volk <rhyme label="f" type="f">bespringen</rhyme>,</l>
        <l id="s7:l9" met="3" type="+-">Gy, Gy kont ze <rhyme label="f" type="f" corresp="#s7:l8">dwingen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Nu dan, Gy ons <rhyme label="a" type="f">Alles</rhyme>!</l>
        <l id="s8:l2" met="3" type="+-">Zo moet men u <rhyme label="b" type="f">heeten</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Wyl wy woord nog teeken <rhyme label="b" type="f" corresp="#s8:l2">weeten</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Dat U ons <rhyme label="c" type="f">ontdekken</rhyme>,</l>
        <l id="s8:l5" met="3" type="+-">Of zou konnen <rhyme label="d" type="f">toonen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Wat genaaden in U <rhyme label="d" type="f" corresp="#s8:l5">woonen</rhyme>.</l>
        <l id="s8:l7" met="4" type="+-">Die U kent, ziet geen <rhyme label="e" type="m">end</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">Dit voert ons naar <rhyme label="f" type="f">booven</rhyme>:</l>
        <l id="s8:l9" met="3" type="+-">Niet zien en <rhyme label="f" type="f" corresp="#s8:l8">gelooven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Ziet, wy vallen <rhyme label="a" type="f">needer</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">Niet met schrik en <rhyme label="b" type="f">beeven</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Niet door uwen toorn <rhyme label="b" type="f" corresp="#s9:l2">gedreeven</rhyme>;</l>
        <l id="s9:l4" met="3" type="+-">Neen, wy zyn <rhyme label="c" type="f">getrokken</rhyme>,</l>
        <l id="s9:l5" met="3" type="+-">Door uw <rhyme label="d" type="f">Liefdes-neigen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">In een diep eerbiedig <rhyme label="d" type="f" corresp="#s9:l5">buigen</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Voor den troon, daar de <rhyme label="e" type="m">Zoon</rhyme>,</l>
        <l id="s9:l8" met="3" type="+-">Die gekruiste <rhyme label="f" type="f">waarheit</rhyme>,</l>
        <l id="s9:l9" met="3" type="+-">Blinkt in volle <rhyme label="f" type="f" corresp="#s9:l8">klaarheit</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Reik ons uwen <rhyme label="a" type="f">Schepter</rhyme>;</l>
        <l id="s10:l2" met="3" type="+-">Majesteitse <rhyme label="b" type="f">g'naade</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">In den gang op 's <rhyme label="b" type="f" corresp="#s10:l2">Leevenspaade</rhyme>;</l>
        <l id="s10:l4" met="3" type="+-">Reik ze steeds ons <rhyme label="c" type="f">tegen</rhyme>,</l>
        <l id="s10:l5" met="3" type="+-">Dat wy 't <rhyme label="d" type="f">ondervinden</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Dat wy zyn van uw <rhyme label="d" type="f" corresp="#s10:l5">Beminden</rhyme>.</l>
        <l id="s10:l7" met="4" type="+-">Hart en mond, zal <rhyme label="e" type="m">terstond</rhyme></l>
        <l id="s10:l8" met="3" type="+-">Van genaade <rhyme label="f" type="f">stroomen</rhyme>,</l>
        <l id="s10:l9" met="3" type="+-">En tot blydschap <rhyme label="f" type="f" corresp="#s10:l8">komen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
