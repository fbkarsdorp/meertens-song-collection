  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Christus is <rhyme label="a" type="f">verresen</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">En van der pijnen <rhyme label="a" type="f" corresp="#s1:l1">ghenesen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Des sullen wy al blij <rhyme label="b" type="m">syn</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Christus is onsen troost <rhyme label="b" type="m" corresp="#s1:l3">fyn</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+"><rhyme label="c" type="m">Kyrieleis</rhyme>.</l>
        <l id="s1:l6" met="3" type="+-">Waer hy niet <rhyme label="d" type="f">verresen</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Die werelt die bleue <rhyme label="d" type="f" corresp="#s1:l6">verwesen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Om dat hy nu verresen <rhyme label="e" type="m">sy</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">So louen wy den Vader Jesu <rhyme label="e" type="m" corresp="#s1:l8">vry</rhyme>.</l>
        <l id="s1:l10" met="4" type="+-">Verresen is Christus seer <rhyme label="f" type="m">fris</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Die aller menschen trooster <rhyme label="f" type="m" corresp="#s1:l10">is</rhyme>.</l>
        <l id="s1:l12" met="2" type="-+"><rhyme label="c" type="m" corresp="#s1:l5">Kyrieleis</rhyme>.</l>
        <l id="s1:l13" met="4" type="-+">Alleluya. <rhyme label="g" type="m">Alleluya</rhyme>.</l>
        <l id="s1:l14" met="4" type="-+">Alleluya. <rhyme label="g" type="m" corresp="#s1:l13">Alleluya</rhyme>.</l>
        <l id="s1:l15" met="4" type="+-">Des sullen wy al blij <rhyme label="h" type="m">zijn</rhyme>,</l>
        <l id="s1:l16" met="4" type="+-">Christus is onsen troost <rhyme label="h" type="m" corresp="#s1:l15">fijn</rhyme>.</l>
        <l id="s1:l17" met="2" type="+-"><rhyme label="c" type="m" corresp="#s1:l5">Kyrieleys</rhyme>.</l>
