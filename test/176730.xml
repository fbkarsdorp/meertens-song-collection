    <melody>O faux monde</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Wilt o Broeders met <rhyme label="a" type="f">verstanden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Aensien Gods <rhyme label="b" type="m">vriendelijckheyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Al den dagh heeft hy sijn <rhyme label="a" type="f" corresp="#s1:l1">handen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Tot u goedigh <rhyme label="b" type="m" corresp="#s1:l2">uyt-ghebreydt</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Hy wil garen  //  u <rhyme label="c" type="f">bewaren</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Onder sijne Vleughels <rhyme label="d" type="m">soet</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Als een Vinne  //  vol van <rhyme label="e" type="f">Minne</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Haer verstroyde Kiecxkens <rhyme label="d" type="m" corresp="#s1:l6">doet</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Soo ghy niet en wordt <rhyme label="f" type="m">bevrijt</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Denckt dat ghy de oorsaeck <rhyme label="f" type="m" corresp="#s1:l9">zijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Siet hoe vyerigh heeft <rhyme label="a" type="f">ghebleken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Sijn brandende liefde <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Doen hy liet sijn Lichaem <rhyme label="a" type="f" corresp="#s2:l1">breken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">En vergieten al sijn <rhyme label="b" type="m" corresp="#s2:l2">bloet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Om te deghen  //  te <rhyme label="c" type="f">beweghen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Uw versteende sinnen <rhyme label="d" type="m">quaet</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Tot den vrede  //  Godes <rhyme label="e" type="f">mede</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Soo ghy u versoenen <rhyme label="d" type="m" corresp="#s2:l6">laet</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Kan u dit doen gheen <rhyme label="f" type="m">profijt</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Denckt dat ghy de oorsaeck <rhyme label="f" type="m" corresp="#s2:l9">zijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hy en heeft niet <rhyme label="a" type="f">naeghelaten</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Al te doen, al wat hy <rhyme label="b" type="m">weet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat ghy sijnen sin sout <rhyme label="a" type="f" corresp="#s3:l1">vaten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Door Apostel oft <rhyme label="b" type="m" corresp="#s3:l2">Propheet</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Door veel Preken  //  ende <rhyme label="c" type="f">spreken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Door veel teyckens t’aller <rhyme label="d" type="m">uyr</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Door het Scheppen  //  ende <rhyme label="e" type="f">reppen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Van soo meenigh <rhyme label="d" type="m" corresp="#s3:l6">creatuyr</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">Soo ghy nu versuymt den <rhyme label="f" type="m">tijdt</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">Denckt dat ghy de oorsaeck <rhyme label="f" type="m" corresp="#s3:l9">zijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ghy en hoeft niet verr’ te <rhyme label="a" type="f">soecken</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Om te weten wat hy <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Want de werelt is vol <rhyme label="a" type="f" corresp="#s4:l1">Boecken</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Ghy hebt al wat ghy <rhyme label="b" type="m" corresp="#s4:l2">begheert</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Daer beneven  //  staet <rhyme label="c" type="f">gheschreven</rhyme></l>
        <l id="s4:l6" met="4" type="+-">In uw herte sijnen <rhyme label="d" type="m">wil</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Wilt ghy weten  //  sijn <rhyme label="e" type="f">secreten</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Gaet maer in u selven <rhyme label="d" type="m" corresp="#s4:l6">stil</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Wordt ghy ‘t Godtlijck leven <rhyme label="f" type="m">quijt</rhyme></l>
        <l id="s4:l10" met="4" type="+-">Denckt dat ghy de oorsaeck <rhyme label="f" type="m" corresp="#s4:l9">zijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Niet alleen en gheeft hy <rhyme label="a" type="f">spijse</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Ghestelijck der zielen <rhyme label="b" type="m">broot</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Maer lichamelijcker <rhyme label="a" type="f" corresp="#s5:l1">wijse</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Vervult hy oock uwen <rhyme label="b" type="m" corresp="#s5:l2">noot</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Hy wil sorghen  //  alle <rhyme label="c" type="f">morghen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Voor het gheen wat u <rhyme label="d" type="m">behoeft</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Dus met kommer  //  ende <rhyme label="e" type="f">slommer</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Uwe sinnen niet <rhyme label="d" type="m" corresp="#s5:l6">bedroeft</rhyme>,</l>
        <l id="s5:l9" met="4" type="+-">Soo u tijdt daer in <rhyme label="f" type="m">verslijt</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">Denckt dat ghy de oorsaeck <rhyme label="f" type="m" corresp="#s5:l9">zijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Murmureert tot geenen <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Terghen Godt oft <rhyme label="b" type="m">‘creatuyr</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Wilt altijt gheduldigh <rhyme label="a" type="f" corresp="#s6:l1">lijden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Valt u ‘t leven hier wat <rhyme label="b" type="m" corresp="#s6:l2">suyr</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">U bedroeven  //  voor <rhyme label="c" type="f">beproeven</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Neemt van Godt uyt liefden <rhyme label="d" type="m">aen</rhyme>:</l>
        <l id="s6:l7" met="4" type="+-">En sijn Roede  //  u ten <rhyme label="e" type="f">goede</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Wilt met danckbaerheyt <rhyme label="d" type="m" corresp="#s6:l6">ontfaen</rhyme>,</l>
        <l id="s6:l9" met="4" type="+-">En als ghy wordt <rhyme label="f" type="m">ghekastijt</rhyme>,</l>
        <l id="s6:l10" met="4" type="+-">Denckt dat ghy de oorsaeck <rhyme label="f" type="m" corresp="#s6:l9">zijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Siet ghy yemant niet <rhyme label="a" type="f">beleven</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Sijn verstant soo dat <rhyme label="b" type="m">behoort</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dat en kan gheen reden <rhyme label="a" type="f" corresp="#s7:l1">gheven</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Dat ghy niet soudt trecken <rhyme label="b" type="m" corresp="#s7:l2">voort</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Laat des Heeren  //  woort u <rhyme label="c" type="f">leeren</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">En op sijn exempel <rhyme label="d" type="m">siet</rhyme>:</l>
        <l id="s7:l7" met="4" type="+-">Wil u naesten  //  hem niet <rhyme label="e" type="f">haesten</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Laet u dat beletten <rhyme label="d" type="m" corresp="#s7:l6">niet</rhyme>,</l>
        <l id="s7:l9" met="4" type="+-">Zijt ghy traegh, dat niemant <rhyme label="f" type="m">wijt</rhyme>,</l>
        <l id="s7:l10" met="4" type="+-">Denckt dat ghy de oorsaeck <rhyme label="f" type="m" corresp="#s7:l9">zijt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Nu is ‘t recht de tijdt van <rhyme label="a" type="f">zaeyen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Doet nu goet sonder <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Soo sult ghy hier naemaels <rhyme label="a" type="f" corresp="#s8:l1">maeyen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Anders sult ghy hebben <rhyme label="b" type="m" corresp="#s8:l2">niet</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Godt is goedigh  //  en <rhyme label="c" type="f">langhmoedigh</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Wil niet dat men hem <rhyme label="d" type="m">bespot</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Wilt te vooren  //  ghy niet <rhyme label="e" type="f">hooren</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Met hem hebt ghy deel noch <rhyme label="d" type="m" corresp="#s8:l6">lot</rhyme>,</l>
        <l id="s8:l9" met="4" type="+-">Soo hy naemaels u <rhyme label="f" type="m">afsnijt</rhyme>,</l>
        <l id="s8:l10" met="4" type="+-">Denckt dat ghy de oorsaeck <rhyme label="f" type="m" corresp="#s8:l9">zijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
