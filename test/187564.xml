    <tags/>
    <melody>Nerea schoonste van uw geburen</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Vaader! Doe uw aanzigt <rhyme label="a" type="f">ligten</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Op ons in <rhyme label="b" type="m">goedertierentheid</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Zie gunstig aan 't geen wy <rhyme label="a" type="f" corresp="#s1:l1">verrigten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Om wel te doen maak ons <rhyme label="b" type="m" corresp="#s1:l2">bereid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maak ons gewillig en <rhyme label="a" type="f">bly-moedig</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Opregt, stand-vastig in ons <rhyme label="b" type="m">werk</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Getrouw, in 't goed-doen <rhyme label="a" type="f" corresp="#s2:l1">over-vloedig</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Uw eere zy onz' <rhyme label="b" type="m" corresp="#s2:l2">ooge-merk</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zend uwen zeegen op ons <rhyme label="a" type="f">needer</rhyme>.</l>
        <l id="s3:l2" met="4" type="-+">Verquik ons onder moeit en <rhyme label="b" type="m">last</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Als wy verslappen, sterk ons <rhyme label="a" type="f" corresp="#s3:l1">weeder</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Maak ons in uwen weegen <rhyme label="b" type="m" corresp="#s3:l2">vast</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Om Christus uwen lieven <rhyme label="a" type="f">Zoone</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die uw eis, voor ons heeft <rhyme label="b" type="m">voldaan</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wild dog genaadelijk <rhyme label="a" type="f" corresp="#s4:l1">verschoonen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Al het gebrek van ons <rhyme label="b" type="m" corresp="#s4:l2">begaan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wy wagten van den arbeid <rhyme label="a" type="f">ruste</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Als Gy uw knegten zult <rhyme label="b" type="m">ontslaan</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Uw glori koom de ziel <rhyme label="a" type="f" corresp="#s5:l1">verlusten</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Wanneer ons leeven is <rhyme label="b" type="m" corresp="#s5:l2">gedaan</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
