  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Schoon vriendinne weest <rhyme label="a" type="m">ghegroet</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Eens u deurken open <rhyme label="a" type="m" corresp="#s1:l1">doet</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Wy syn t'saemen hier <rhyme label="b" type="m">vergaert</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Met den Mey <rhyme label="c" type="f">verheven</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Die seer lieffelick is <rhyme label="b" type="m" corresp="#s1:l3">gheblaert</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hem willen wy u <rhyme label="c" type="f" corresp="#s1:l4">gheven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">T'is den Mey-boom seer <rhyme label="a" type="m">plaisant</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Die voor Christus was <rhyme label="a" type="m" corresp="#s2:l1">gheplant</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als hy voor de menschen <rhyme label="b" type="m">snoodt</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Hier op t'swerelts <rhyme label="c" type="f">erven</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Uyt herts grondighe liefde <rhyme label="b" type="m" corresp="#s2:l3">groot</rhyme></l>
        <l id="s2:l6" met="3" type="-+">De doodt heeft willen <rhyme label="c" type="f" corresp="#s2:l4">sterven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Daerde heeft dit Cruys, dien <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In haer selven langh' <rhyme label="a" type="m" corresp="#s3:l1">ghehadt</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">D'heydenen hadden't  <rhyme label="b" type="m">ghedaen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Mendent te <rhyme label="c" type="f">verslinden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Maer hun meyninghen syn <rhyme label="b" type="m" corresp="#s3:l3">vergaen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Godt heeft het laeten <rhyme label="c" type="f" corresp="#s3:l4">vinden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">T'is de Christenen <rhyme label="a" type="m">ghejont</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Door Helena die het <rhyme label="a" type="m" corresp="#s4:l1">vondt</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Dus moghen wy breet en <rhyme label="b" type="m">wijt</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Syn tot alle <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Met de heylighe kerck <rhyme label="b" type="m" corresp="#s4:l3">verblijdt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Om t'heylich Cruys <rhyme label="c" type="f" corresp="#s4:l4">ghevonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">D'aerde die is <rhyme label="a" type="m">blyelick</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Sy betoont dat <rhyme label="a" type="m" corresp="#s5:l1">vryelick</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Boomen, gers, en menich <rhyme label="b" type="m">cruyt</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Gheven hun <rhyme label="c" type="f">coleuren</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">al de blommen die spruyten <rhyme label="b" type="m" corresp="#s5:l3">uyt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En gheven soete <rhyme label="c" type="f" corresp="#s5:l4">geuren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Al de voghelkens <rhyme label="a" type="m">verweckt</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Singhen soo syn syn <rhyme label="a" type="m" corresp="#s6:l1">ghebeckt</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">D'een ghediert hubbelt en <rhyme label="b" type="m">springht</rhyme></l>
        <l id="s6:l4" met="3" type="+-">D'ander gaen en <rhyme label="c" type="f">keeren</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Al dat levendich is, het <rhyme label="b" type="m" corresp="#s6:l3">schinght</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Dat desen mey wilt <rhyme label="c" type="f" corresp="#s6:l4">eeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Lof tot een <rhyme label="a" type="m">ghedinckenis</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Dat dit Cruys ghevonden <rhyme label="a" type="m" corresp="#s7:l1">is</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Bedanckt Godt <rhyme label="b" type="m">ghebenedijt</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Bidt dat hy dees <rhyme label="c" type="f">landen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Door het heylichste Cruys <rhyme label="b" type="m" corresp="#s7:l3">bevrijdt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Van alle de <rhyme label="c" type="f" corresp="#s7:l4">vyanden</rhyme>.</l>
      </lg>
    </lg>
  </text>
