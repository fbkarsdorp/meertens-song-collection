    <melody>Je suis un marchand d'allumettes</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs twee Discipels t'saemen <rhyme label="a" type="f">waeren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ende vertelden Christus <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Quamp hun den Heer sich open <rhyme label="a" type="f" corresp="#s1:l1">haeren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Schoon op-gestaen uyt d'aerde <rhyme label="b" type="m" corresp="#s1:l2">schoodt</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Syt verblydt desen <rhyme label="c" type="m">tydt</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">En wilt <rhyme label="d" type="f">singen</rhyme></l>
        <l id="s1:l7" met="5" type="+-">Alleluia tot ons vyandts <rhyme label="c" type="m" corresp="#s1:l5">spyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy vraeght, waer af syn ulie <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wat sien ick ulie soo <rhyme label="b" type="m">bedruckt</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Komt, seggen sy, gy vremdt <rhyme label="a" type="f" corresp="#s2:l1">getreden</rhyme>?</l>
        <l id="s2:l4" met="4" type="-+">Jesus is ons door t'Kruys <rhyme label="b" type="m" corresp="#s2:l2">ontruckt</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Syt verblydt desen <rhyme label="c" type="m">tydt</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">En wilt <rhyme label="d" type="f">singen</rhyme></l>
        <l id="s2:l7" met="5" type="+-">Alleluia tot ons vyandts <rhyme label="c" type="m" corresp="#s2:l5">spyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Traegh van geloof, dit moeste <rhyme label="a" type="f">lyden</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Christus voor s'wereldts <rhyme label="b" type="m">saeligheydt</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Soo moest hy sich in glori' <rhyme label="a" type="f" corresp="#s3:l1">verblyden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dit heeft u de Schriftuer <rhyme label="b" type="m" corresp="#s3:l2">voorseydt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Syt verblydt desen <rhyme label="c" type="m">tydt</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">En wilt <rhyme label="d" type="f">singen</rhyme></l>
        <l id="s3:l7" met="5" type="+-">Alleluia tot ons vyandts <rhyme label="c" type="m" corresp="#s3:l5">spyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Christus is in t'Casteel <rhyme label="a" type="f">gekomen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En sat met hun aen taeffel <rhyme label="b" type="m">neer</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Als hy het broodt daer had' <rhyme label="a" type="f" corresp="#s4:l1">genomen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Kenden sy Jesus, hunnen <rhyme label="b" type="m" corresp="#s4:l2">Heer</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Syt verblydt desen <rhyme label="c" type="m">tydt</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">En wilt <rhyme label="d" type="f">singen</rhyme></l>
        <l id="s4:l7" met="5" type="+-">Alleluia tot ons vyandts <rhyme label="c" type="m" corresp="#s4:l5">spyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sy voelden hert, en Ziele <rhyme label="a" type="f">blaeken</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En heel verlicht door s'Hemels <rhyme label="b" type="m">schyn</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Hebt, Jeught, altydt goed' <rhyme label="a" type="f" corresp="#s5:l1">saemen-spraeken</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Jesus sal oock met ulie <rhyme label="b" type="m" corresp="#s5:l2">syn</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Syt verblydt desen <rhyme label="c" type="m">tydt</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">En wilt <rhyme label="d" type="f">singen</rhyme></l>
        <l id="s5:l7" met="5" type="+-">Alleluia tot ons vyandts <rhyme label="c" type="m" corresp="#s5:l5">spyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
