  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ik heb een trou <rhyme label="a" type="f">geslooten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Met al Gods <rhyme label="a" type="f" corresp="#s1:l1">gunstgenoten</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Der heyrscharen <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Heb ik de hand <rhyme label="c" type="f">gegeven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En met mijn heer <rhyme label="c" type="f" corresp="#s1:l4">geschreven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Mijn heyr is in zijn <rhyme label="b" type="m" corresp="#s1:l3">eer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het zal my nooyt <rhyme label="a" type="f">berouwen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ik zal niet weer <rhyme label="a" type="f" corresp="#s2:l1">aanschouwen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Met lust mijn oude <rhyme label="b" type="m">staat</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Weg Wereld laat my <rhyme label="c" type="f">rusten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Weg weg met al u <rhyme label="c" type="f" corresp="#s2:l4">lusten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Gy zijt by my <rhyme label="b" type="m" corresp="#s2:l3">gehaat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mijn ziel heeft ligt <rhyme label="a" type="f">gekregen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van God en van zijn <rhyme label="a" type="f" corresp="#s3:l1">weegen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Mijn herte is <rhyme label="b" type="m">bereyd</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Met lijdsaamheid te <rhyme label="c" type="f">loopen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Her pad van ’t zalig <rhyme label="c" type="f" corresp="#s3:l4">hoopen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ter zaliger <rhyme label="b" type="m" corresp="#s3:l3">heerlijkheid</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Weg Duyvel, Wereld, <rhyme label="a" type="f">Sonden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">’K zat lang genoeg <rhyme label="a" type="f" corresp="#s4:l1">gebonden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">In uwe <rhyme label="b" type="m">slaverny</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Nu ben ik uyt u <rhyme label="c" type="f">handen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Verbroken zijn de <rhyme label="c" type="f" corresp="#s4:l4">banden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Nu is mijn ziele <rhyme label="b" type="m" corresp="#s4:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">’t Is hier zoo bly en <rhyme label="a" type="f">heylig</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">’t Is hier zoo vry en <rhyme label="a" type="f" corresp="#s5:l1">veylig</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ik zit in zoo veel <rhyme label="b" type="m">rust</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">’t Is hier als heyl en <rhyme label="c" type="f">vrede</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Mijn ziele vind met <rhyme label="c" type="f" corresp="#s5:l4">rede</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hier al haar heyl en <rhyme label="b" type="m" corresp="#s5:l3">lust</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Mijn staat is zoo <rhyme label="a" type="f">bestendig</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">De Duyvel mag <rhyme label="a" type="f" corresp="#s6:l1">inwendig</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Op my eens komen <rhyme label="b" type="m">aan</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Met schande moet hy <rhyme label="c" type="f">wyken</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">’K zal nimmermeer <rhyme label="c" type="f" corresp="#s6:l4">bezwyken</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Maar eeuwig blyve <rhyme label="b" type="m" corresp="#s6:l3">staan</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Want Gods <rhyme label="a" type="f">getrouwigheden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">’t Verbond van zyne <rhyme label="a" type="f" corresp="#s7:l1">vreden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Neemt nimmermeer een <rhyme label="b" type="m">end</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Den geest aan my <rhyme label="c" type="f">gegeven</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Zal eeuwig in mijn <rhyme label="c" type="f" corresp="#s7:l4">leeven</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Wat is ’er van <rhyme label="b" type="m" corresp="#s7:l3">bekent</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dat my te rug zou <rhyme label="a" type="f">halen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En t’eenemaal doen <rhyme label="a" type="f" corresp="#s8:l1">dwalen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Van mijn verkooren <rhyme label="b" type="m">pat</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Al waare dan de <rhyme label="c" type="f">weegen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Wat krom en steyl <rhyme label="c" type="f" corresp="#s8:l4">gelegen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ik wort het nimmer <rhyme label="b" type="m" corresp="#s8:l3">zat</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">De aarde mag <rhyme label="a" type="f">veranderen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Den hemel in <rhyme label="a" type="f" corresp="#s9:l1">malkanderen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Eens rollen als een <rhyme label="b" type="m">doek</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Maar God zal die ten <rhyme label="c" type="f">leeven</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Van hem zijn <rhyme label="c" type="f" corresp="#s9:l4">aangeschreven</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Niet delgen uyt zijn <rhyme label="b" type="m" corresp="#s9:l3">boek</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wel zalig regt <rhyme label="a" type="f">geprezen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Zal hy dan eeuwig <rhyme label="a" type="f" corresp="#s10:l1">wezen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die Hod ten leeve <rhyme label="b" type="m">schrijft</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">O dat is eeuwig <rhyme label="c" type="f">erve</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">In leeve en in <rhyme label="c" type="f" corresp="#s10:l4">sterve</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Gods eygendom hy <rhyme label="b" type="m" corresp="#s10:l3">blijft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
