<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11802</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Quando io miro le rose</melody>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VVEl op ghy <rhyme label="a" type="f">Cherubimen</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">En Rey van <rhyme label="a" type="f" corresp="#s1:l1">Seraphimen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die altijdt voor Godts <rhyme label="b" type="f">oogen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">De blijdtschap doet <rhyme label="b" type="f" corresp="#s1:l3">vertogen</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Komt stelt u heldre <rhyme label="c" type="f">snaren</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">Na dese vreughd, Der lieve <rhyme label="c" type="f" corresp="#s1:l5">Martelaren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Beschouwt dees lieve <rhyme label="a" type="f">Shaepjes</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Onnoosle soete <rhyme label="a" type="f" corresp="#s2:l1">Knaepjes</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Door Moorders handt <rhyme label="b" type="f">geschonden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Bebloet in hare <rhyme label="b" type="f" corresp="#s2:l3">wonden</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Maer 't zieltjen, 't eelste <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Dat wort by Godt, in eeuwigheyt <rhyme label="c" type="f" corresp="#s2:l5">verheven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Beschouwt dees suyvre <rhyme label="a" type="f">leden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Geciert in witte <rhyme label="a" type="f" corresp="#s3:l1">kleeden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die onbemorst met <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Maer reyn en klaer <rhyme label="b" type="f" corresp="#s3:l3">bevonden</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Verschijnen in Godts <rhyme label="c" type="f">Tempel</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Verwellekomt, in sijn gewijde <rhyme label="c" type="f" corresp="#s3:l5">drempel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">V Harpen en <rhyme label="a" type="f">Tamboeren</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">O Engeljes! wilt <rhyme label="a" type="f" corresp="#s4:l1">roeren</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">En met u lieve <rhyme label="b" type="f">keeltjes</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Nabootsen 's Hemels <rhyme label="b" type="f" corresp="#s4:l3">veeltjes</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En soo veel vreughd <rhyme label="c" type="f">verwecken</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Dat u gesangh, mach alles over <rhyme label="c" type="f" corresp="#s4:l5">strecken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Dwingh-landt! <rhyme label="a" type="f">Kinder-moorder</rhyme>!</l>
        <l id="s5:l2" met="3" type="-+">O schandt-vleck! <rhyme label="a" type="f" corresp="#s5:l1">Rust-verstoorder</rhyme>!</l>
        <l id="s5:l3" met="3" type="-+">Vol ziddren, angst en <rhyme label="b" type="f">beven</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Ons Koningh moet doch <rhyme label="b" type="f" corresp="#s5:l3">leven</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Hoe dat ghy moordt de <rhyme label="c" type="f">zielen</rhyme>,</l>
        <l id="s5:l6" met="5" type="-+">Ons Koningh leeft, die kondy niet <rhyme label="c" type="f" corresp="#s5:l5">vernielen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Is oyt in 's Hemels <rhyme label="a" type="f">wooningh</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Verwelkomt eenigh <rhyme label="a" type="f" corresp="#s6:l1">Koningh</rhyme>?</l>
        <l id="s6:l3" met="3" type="-+">Soo zijn dit sijne <rhyme label="b" type="f">boden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dees liet Herodes <rhyme label="b" type="f" corresp="#s6:l3">dooden</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Vyt vreese van sijn <rhyme label="c" type="f">Rijcken</rhyme>:</l>
        <l id="s6:l6" met="5" type="-+">Ons Koningh leeft, en heerscht hier <rhyme label="c" type="f" corresp="#s6:l5">eeuwighlijcken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wie tegen Godt wil <rhyme label="a" type="f">kampen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">‘ Wort overstulpt met <rhyme label="a" type="f" corresp="#s7:l1">rampen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">‘ Sijn prickel is te <rhyme label="b" type="f">krachtigh</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">‘ En sijne handt <rhyme label="b" type="f" corresp="#s7:l3">almachtigh</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">‘ Dus staeckt u <rhyme label="c" type="f">moorderyen</rhyme>,</l>
        <l id="s7:l6" met="5" type="-+">‘ Ons Koningh leeft, dies suldy niet <rhyme label="c" type="f" corresp="#s7:l5">bedyen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O Hemels Choor wilt <rhyme label="a" type="f">krielen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Vol blijdtschap om dees <rhyme label="a" type="f" corresp="#s8:l1">zielen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ontfanghtse met <rhyme label="b" type="f">schalmeyen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En met vergode <rhyme label="b" type="f" corresp="#s8:l3">Reyen</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">En singht Godt der <rhyme label="c" type="f">Heyrscharen</rhyme>:</l>
        <l id="s8:l6" met="5" type="-+">Godt Zebaoth, dat die sijn volck wil <rhyme label="c" type="f" corresp="#s8:l5">sparen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
