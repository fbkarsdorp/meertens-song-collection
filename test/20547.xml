  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs Titus op een <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s1:l2" met="5" type="-+">De Duytsche Naci had' gantsch <rhyme label="b" type="m">over-heert</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">De Keyser heel <rhyme label="a" type="m" corresp="#s1:l1">verblijdt</rhyme></l>
        <l id="s1:l4" met="5" type="-+">Met grooter eer te Romen <rhyme label="b" type="m" corresp="#s1:l2">triumpheert</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Te me'er, om dat het op dat <rhyme label="c" type="m">pas</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Den dagh sijnder Gheboorte <rhyme label="c" type="m" corresp="#s1:l5">was</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Daer werden doen ter <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s2:l2" met="5" type="-+">Te Romen veel Schou-speelen <rhyme label="b" type="m">aengherecht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Men sagh een harden <rhyme label="a" type="m" corresp="#s2:l1">strijdt</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Van felle Beesten een seer wreed' <rhyme label="b" type="m" corresp="#s2:l2">ghevecht</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Daer wierden menschen <rhyme label="c" type="m">by-gebracht</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Die men de doodt wel waerdigh <rhyme label="c" type="m" corresp="#s2:l5">acht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die waren langh <rhyme label="a" type="m">vergaert</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Om te vercieren dese groote <rhyme label="b" type="m">Feest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die men niet langher <rhyme label="a" type="m" corresp="#s3:l1">spaert</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Maer moeten vechten met een wreede <rhyme label="b" type="m" corresp="#s3:l2">Beest</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">En werden soo in korten <rhyme label="c" type="m">tijdt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Vernielt, verslonden in den <rhyme label="c" type="m" corresp="#s3:l5">strijdt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Daer was me'e eenen <rhyme label="a" type="m">Leeu</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Die uyt 't Egipse Wout was daer <rhyme label="b" type="m">gebracht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die met ys'lijck <rhyme label="a" type="m" corresp="#s4:l1">gheschreeu</rhyme></l>
        <l id="s4:l4" met="5" type="-+">En fel ghebaer, vast na een Proye <rhyme label="b" type="m" corresp="#s4:l2">wacht</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Een yeder sagh met wonder <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Den grootsten Leeuw verhonghert <rhyme label="c" type="m" corresp="#s4:l5">staen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Den Ouden Slaef men <rhyme label="a" type="m">bracht</rhyme></l>
        <l id="s5:l2" met="5" type="-+">Ter doodt bedroeft, recht na dien <rhyme label="b" type="m">Leeuwen-kuyl</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Dien Leeuw die staet en <rhyme label="a" type="m" corresp="#s5:l1">wacht</rhyme></l>
        <l id="s5:l4" met="5" type="-+">Vast na dien Proy, met op-gesperde <rhyme label="b" type="m" corresp="#s5:l2">muyl</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Men meend' hy soud' haest zyn <rhyme label="c" type="m">verscheurt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Maer 't is heel anders daer <rhyme label="c" type="m" corresp="#s5:l5">ghebeurt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Den Leeuw die kent de <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Die hem wel eer, eens hadde deucht <rhyme label="b" type="m">ghedaen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Hy siet hem vriend'lijck <rhyme label="a" type="m" corresp="#s6:l1">an</rhyme>;</l>
        <l id="s6:l4" met="5" type="-+">En heeft hem als een lieven Vriendt <rhyme label="b" type="m" corresp="#s6:l2">ontfaen</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Den Slaef die siet, en kent den <rhyme label="c" type="m">Leeu</rhyme>:</l>
        <l id="s6:l6" met="4" type="-+">Men hoord' van vreucht een groot <rhyme label="c" type="m" corresp="#s6:l5">gheschreeu</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy heeft den Leeuw <rhyme label="a" type="m">ghekust</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Die hem doen meed' oock alle vrientschap <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Veel saghen dit met <rhyme label="a" type="m" corresp="#s7:l1">lust</rhyme>,</l>
        <l id="s7:l4" met="5" type="-+">Een yeder het syn van dese saeck <rhyme label="b" type="m" corresp="#s7:l2">vermoedt</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Den Keyser hiet hem halen <rhyme label="c" type="m">uyt</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En vraeght den Slaef wat of 't <rhyme label="c" type="m" corresp="#s7:l5">beduyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O ! Slaef, gheef my <rhyme label="a" type="m">bescheyt</rhyme>,</l>
        <l id="s8:l2" met="5" type="-+">Hoe is u Naem, en waer zijt ghy van <rhyme label="b" type="m">daen</rhyme> ?</l>
        <l id="s8:l3" met="3" type="-+">Wat is het voor een <rhyme label="a" type="m" corresp="#s8:l1">feyt</rhyme>,</l>
        <l id="s8:l4" met="5" type="-+">Daer ghy dus om nu deer'lijck moet <rhyme label="b" type="m" corresp="#s8:l2">vergaen</rhyme>;</l>
        <l id="s8:l5" met="4" type="-+">Waerom heeft u den Leeuw <rhyme label="c" type="m">verschoont</rhyme> ?</l>
        <l id="s8:l6" met="4" type="-+">Ick wil, dat ghy 't my klaer'lijck <rhyme label="c" type="m" corresp="#s8:l5">toont</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Zijt ghy een <rhyme label="a" type="m">Toovenaer</rhyme> ?</l>
        <l id="s9:l2" met="5" type="-+">Of is den Leeuwe van u <rhyme label="b" type="m">op-gevoedt</rhyme> ?</l>
        <l id="s9:l3" met="3" type="-+">Of door u uyt <rhyme label="a" type="m" corresp="#s9:l1">ghevaer</rhyme></l>
        <l id="s9:l4" met="5" type="-+">Verlost, of hem gedaen oyt eenigh meerder <rhyme label="b" type="m" corresp="#s9:l2">goedt</rhyme> ?</l>
        <l id="s9:l5" met="4" type="-+">De saeck is vreemt die men hier <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">En is, mijns wetens, noyt <rhyme label="c" type="m" corresp="#s9:l5">geschiedt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">HY sprack, Eerwaerde <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s10:l2" met="5" type="-+">Ick ben een Slaef, Androclus <rhyme label="b" type="m">toegenaemt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Ick heb gheweest wel <rhyme label="a" type="m" corresp="#s10:l1">eer</rhyme>,</l>
        <l id="s10:l4" met="5" type="-+">Een Ed'len Ridder, vroom, en wel <rhyme label="b" type="m" corresp="#s10:l2">befaemt</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Hoogh in Slavonien <rhyme label="c" type="m">gheacht</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Uyt der Adroniken <rhyme label="c" type="m" corresp="#s10:l5">gheslacht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">'t Geslacht is soo <rhyme label="a" type="m">vermaert</rhyme></l>
        <l id="s11:l2" met="5" type="-+">Als hier de stam van Quintus <rhyme label="b" type="m">Fabius</rhyme>;</l>
        <l id="s11:l3" met="3" type="-+">Een yeder lief en <rhyme label="a" type="m" corresp="#s11:l1">waerdt</rhyme>,</l>
        <l id="s11:l4" met="5" type="-+">Als nu 't gheslacht van Marcus <rhyme label="b" type="m" corresp="#s11:l2">Marcellus</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Ick was ver-eert met Staet, en <rhyme label="c" type="m">Schat</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Gheteelt in Mantuca de <rhyme label="c" type="m" corresp="#s11:l5">Stadt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wy zyn, eylaes ! <rhyme label="a" type="m">verheert</rhyme></l>
        <l id="s12:l2" met="5" type="-+">Van u Romeynen (over-al <rhyme label="b" type="m">vermaert</rhyme>)</l>
        <l id="s12:l3" met="3" type="-+">Ghy hebt ons heel <rhyme label="a" type="m" corresp="#s12:l1">verne'ert</rhyme>;</l>
        <l id="s12:l4" met="5" type="-+">Den Edeldom in 't minste niet <rhyme label="b" type="m" corresp="#s12:l2">ghespaert</rhyme>:</l>
        <l id="s12:l5" met="4" type="-+">Ick die eertijdts was als een <rhyme label="c" type="m">Graef</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Ben nu door u, een armen <rhyme label="c" type="m" corresp="#s12:l5">Slaef</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">'t Is ses-en-twintigh <rhyme label="a" type="m">Jaer</rhyme>,</l>
        <l id="s13:l2" met="5" type="-+">Dat ick ter marckt als Slave werdt <rhyme label="b" type="m">verkocht</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Een Sagher kocht my <rhyme label="a" type="m" corresp="#s13:l1">daer</rhyme>,</l>
        <l id="s13:l4" met="5" type="-+">Heeft my terstondt me'e aen een Saegh <rhyme label="b" type="m" corresp="#s13:l2">gebrocht</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Ick was daer toe gantsch <rhyme label="c" type="m">onbequaem</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Mijn Meester doe niet <rhyme label="c" type="m" corresp="#s13:l5">aenghenaem</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Dacus den <rhyme label="a" type="m">Borgher-Heer</rhyme>,</l>
        <l id="s14:l2" met="5" type="-+">Heeft van hem doen my arme Slaef <rhyme label="b" type="m">gekocht</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Die plaeghde my noch <rhyme label="a" type="m" corresp="#s14:l1">me'er</rhyme>,</l>
        <l id="s14:l4" met="5" type="-+">Door gierigheyt, hy door my winste <rhyme label="b" type="m" corresp="#s14:l2">socht</rhyme>:</l>
        <l id="s14:l5" met="4" type="-+">Ick kreegh oock menigh slagh en <rhyme label="c" type="m">stoot</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">En quam dickmaels in <rhyme label="c" type="m" corresp="#s14:l5">hongers-noodt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Mijn lichaem dat werdt <rhyme label="a" type="m">swack</rhyme></l>
        <l id="s15:l2" met="5" type="-+">Door ouderdom, ghebreck en arbeydt <rhyme label="b" type="m">swaer</rhyme>.</l>
        <l id="s15:l3" met="3" type="-+">'k Leed' stadigh <rhyme label="a" type="m" corresp="#s15:l1">onghemack</rhyme>.</l>
        <l id="s15:l4" met="5" type="-+">Och ! slimmer wierd', eylaes ! van Jaer te <rhyme label="b" type="m" corresp="#s15:l2">Jaer</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Soo ben ick doen met <rhyme label="c" type="m">ongenucht</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">Als desperaet, mijn Heer <rhyme label="c" type="m" corresp="#s15:l5">ontvlucht</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Juyst soo ick met hem <rhyme label="a" type="m">was</rhyme></l>
        <l id="s16:l2" met="5" type="-+">Om te besoecken 't Landt van <rhyme label="b" type="m">Tamithaed'</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Doen quam het best te <rhyme label="a" type="m" corresp="#s16:l1">pas</rhyme></l>
        <l id="s16:l4" met="5" type="-+">Van hem te vluchten op een Avondt <rhyme label="b" type="m" corresp="#s16:l2">spaed'</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Ick woud' niet meer sijn Slave <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s16:l6" met="4" type="-+">En gingh bedroeft in de <rhyme label="c" type="m" corresp="#s16:l5">Woestijn</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">ICk was als doen wel <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s17:l2" met="5" type="-+">Maer haest beswaert met p'rijckel, anghst, en <rhyme label="b" type="m">noodt</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Den Honger quam daer <rhyme label="a" type="m" corresp="#s17:l1">by</rhyme>:</l>
        <l id="s17:l4" met="5" type="-+">Ick riep, bedroeft, gestadigh om de <rhyme label="b" type="m" corresp="#s17:l2">doodt</rhyme>.</l>
        <l id="s17:l5" met="4" type="-+">De middaghs Son my heftigh <rhyme label="c" type="m">stack</rhyme>,</l>
        <l id="s17:l6" met="4" type="-+">In een Spelonck socht ick <rhyme label="c" type="m" corresp="#s17:l5">ghemack</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Een woon-plaets van een <rhyme label="a" type="m">Leeuw</rhyme>,</l>
        <l id="s18:l2" met="5" type="-+">Daer socht ick rust, voor mijn onruste <rhyme label="b" type="m">sin</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Ick hoord' een droef <rhyme label="a" type="m" corresp="#s18:l1">gheschreeu</rhyme></l>
        <l id="s18:l4" met="5" type="-+">Van desen Leeuw, die quam daer by my <rhyme label="b" type="m" corresp="#s18:l2">in</rhyme>:</l>
        <l id="s18:l5" met="4" type="-+">Ick sagh geen kans dat ick 't <rhyme label="c" type="m">ontvloodt</rhyme>,</l>
        <l id="s18:l6" met="4" type="-+">Ick was van vrees' by na heel <rhyme label="c" type="m" corresp="#s18:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">In dees' mijn grootste <rhyme label="a" type="m">noodt</rhyme></l>
        <l id="s19:l2" met="5" type="-+">Vond' ick den Leeuw heel gunstigh en <rhyme label="b" type="m">beleeft</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Hy toonde my sijn <rhyme label="a" type="m" corresp="#s19:l1">Poot</rhyme>,</l>
        <l id="s19:l4" met="5" type="-+">Daer hy een Dooren in ghetreden <rhyme label="b" type="m" corresp="#s19:l2">heeft</rhyme>,</l>
        <l id="s19:l5" met="4" type="-+">Hy huylden bangh door groote <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s19:l6" met="4" type="-+">Versocht my doen tot <rhyme label="c" type="m" corresp="#s19:l5">Medicijn</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Ick kreegh een weynigh <rhyme label="a" type="m">moedt</rhyme>,</l>
        <l id="s20:l2" met="5" type="-+">En vat' den klaeu met schrick en beven <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s20:l3" met="3" type="-+">Ick suyverde den <rhyme label="a" type="m" corresp="#s20:l1">voet</rhyme>;</l>
        <l id="s20:l4" met="5" type="-+">En heb den Dooren sachjens <rhyme label="b" type="m" corresp="#s20:l2">uyt-gedaen</rhyme>:</l>
        <l id="s20:l5" met="4" type="-+">Dit licht den Leeuw sijn groote <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s20:l6" met="4" type="-+">En is danckbaer sijn <rhyme label="c" type="m" corresp="#s20:l5">Chirurgijn</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Siet, Weldaedts groote <rhyme label="a" type="m">kracht</rhyme></l>
        <l id="s21:l2" met="5" type="-+">Bedwinght den Leeuw sijn fellen wreeden <rhyme label="b" type="m">aerdt</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">Hy geeft hem op de <rhyme label="a" type="m" corresp="#s21:l1">jacht</rhyme>,</l>
        <l id="s21:l4" met="5" type="-+">En voor ons beyde, vlijtigh spijs' <rhyme label="b" type="m" corresp="#s21:l2">vergaert</rhyme>,</l>
        <l id="s21:l5" met="4" type="-+">Van 't beste dat hy krijghen <rhyme label="c" type="m">kan</rhyme>,</l>
        <l id="s21:l6" met="4" type="-+">Brocht hy, my, als sijn Meester <rhyme label="c" type="m" corresp="#s21:l5">an</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="3" type="-+">OCh ! na een seeck're <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s22:l2" met="5" type="-+">Soo wert den Leeuw met kracht en list <rhyme label="b" type="m">gevaen</rhyme>,</l>
        <l id="s22:l3" met="3" type="-+">Ick was mijn Voeder <rhyme label="a" type="m" corresp="#s22:l1">quijt</rhyme>,</l>
        <l id="s22:l4" met="5" type="-+">En ben bedroeft uyt den Spelonck <rhyme label="b" type="m" corresp="#s22:l2">ghegaen</rhyme>,</l>
        <l id="s22:l5" met="4" type="-+">Daer ginck ick arme Mensch <rhyme label="c" type="m">alleen</rhyme>,</l>
        <l id="s22:l6" met="4" type="-+">Vervuld' het Woudt met bangh <rhyme label="c" type="m" corresp="#s22:l5">geween</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="3" type="-+">Dus ick benauwt en <rhyme label="a" type="m">bangh</rhyme></l>
        <l id="s23:l2" met="5" type="-+">In 't nare Woudt mijn kost met p'rijckel <rhyme label="b" type="m">socht</rhyme>:</l>
        <l id="s23:l3" met="3" type="-+">Maer, och ! ten duerd' niet <rhyme label="a" type="m" corresp="#s23:l1">langh</rhyme></l>
        <l id="s23:l4" met="5" type="-+">Ick werd' gevaen, mijn Meester <rhyme label="b" type="m" corresp="#s23:l2">toe-gebrocht</rhyme>:</l>
        <l id="s23:l5" met="4" type="-+">Mijn wreeden Meester is <rhyme label="c" type="m">versteurt</rhyme>,</l>
        <l id="s23:l6" met="4" type="-+">Wil dat ick hier sal zyn <rhyme label="c" type="m" corresp="#s23:l5">verscheurt</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="3" type="-+">Hier toe ben ick <rhyme label="a" type="m">bewaert</rhyme>,</l>
        <l id="s24:l2" met="5" type="-+">En dus ten toon, Heer Keyser, nu <rhyme label="b" type="m">gebracht</rhyme>,</l>
        <l id="s24:l3" met="3" type="-+">Dees' Leeuw heeft my <rhyme label="a" type="m" corresp="#s24:l1">ghespaert</rhyme>,</l>
        <l id="s24:l4" met="5" type="-+">Den ouden gunst, en Weldaedt noch <rhyme label="b" type="m" corresp="#s24:l2">gedacht</rhyme>,</l>
        <l id="s24:l5" met="4" type="-+">Ick sien nu wel, en weet <rhyme label="c" type="m">ghewis</rhyme>,</l>
        <l id="s24:l6" met="4" type="-+">Dat dit de selfde Leeuwe <rhyme label="c" type="m" corresp="#s24:l5">is</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="3" type="-+">Dees' Leeuw voor and're <rhyme label="a" type="m">wreet</rhyme>,</l>
        <l id="s25:l2" met="5" type="-+">Aen my nu gunst, en liefde <rhyme label="b" type="m">openbaert</rhyme>,</l>
        <l id="s25:l3" met="3" type="-+">d'Oorsaeck, mijn Heer, nu <rhyme label="a" type="m" corresp="#s25:l1">weet</rhyme>,</l>
        <l id="s25:l4" met="5" type="-+">Die ick nu heb waer, en kort <rhyme label="b" type="m" corresp="#s25:l2">verklaert</rhyme>.</l>
        <l id="s25:l5" met="4" type="-+">Den Keyser toond' hem heel <rhyme label="c" type="m">beleeft</rhyme>,</l>
        <l id="s25:l6" met="4" type="-+">Den Slaef vereert, en vryheyt <rhyme label="c" type="m" corresp="#s25:l5">gheeft</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="3" type="-+">Den Slaef, en Leeuw te <rhyme label="a" type="m">saem'</rhyme></l>
        <l id="s26:l2" met="5" type="-+">Een seeck're tijdt zyn by malka'er <rhyme label="b" type="m">gevoedt</rhyme>:</l>
        <l id="s26:l3" met="3" type="-+">Den Leeuw werdt soo <rhyme label="a" type="m" corresp="#s26:l1">bequaem</rhyme></l>
        <l id="s26:l4" met="5" type="-+">Dat hy geen mensch oyt eenigh hinder <rhyme label="b" type="m" corresp="#s26:l2">doet</rhyme>,</l>
        <l id="s26:l5" met="4" type="-+">In 't kort, den wreeden Leeuw werdt <rhyme label="c" type="m">tam</rhyme>,</l>
        <l id="s26:l6" met="4" type="-+">Gingh met den Slaef ghelijck een <rhyme label="c" type="m" corresp="#s26:l5">Lam</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="3" type="-+">Dees' saecke werdt <rhyme label="a" type="m">ruchtbaer</rhyme>,</l>
        <l id="s27:l2" met="5" type="-+">En als een wonder over-al <rhyme label="b" type="m">vertelt</rhyme>,</l>
        <l id="s27:l3" met="3" type="-+">Een Schrijver heeft dit <rhyme label="a" type="m" corresp="#s27:l1">klaer</rhyme></l>
        <l id="s27:l4" met="5" type="-+">Seer wel ghesien, gehoort, in schrift <rhyme label="b" type="m" corresp="#s27:l2">ghestelt</rhyme>,</l>
        <l id="s27:l5" met="4" type="-+">Ick stelt u voor in <rhyme label="c" type="m">Sanghs-gedicht</rhyme>,</l>
        <l id="s27:l6" met="4" type="-+">En wensch dat het den Leser <rhyme label="c" type="m" corresp="#s27:l5">sticht</rhyme>.</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="3" type="-+">Op dat het wreede <rhyme label="a" type="m">Beest</rhyme></l>
        <l id="s28:l2" met="5" type="-+">In weldaedt hem gantsch niet te boven <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s28:l3" met="3" type="-+">Maer dat voor allen <rhyme label="a" type="m" corresp="#s28:l1">meest</rhyme></l>
        <l id="s28:l4" met="5" type="-+">De weldaedt diepst in 't hert  gewortelt <rhyme label="b" type="m" corresp="#s28:l2">staet</rhyme>,</l>
        <l id="s28:l5" met="4" type="-+">Op dat hy recht eerbiedigh <rhyme label="c" type="m">loont</rhyme>,</l>
        <l id="s28:l6" met="4" type="-+">Die hem recht weldaedt heeft <rhyme label="c" type="m" corresp="#s28:l5">betoont</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
