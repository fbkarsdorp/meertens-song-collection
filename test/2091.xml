  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">NA <rhyme label="a" type="f">chtegaeltjen</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Uw' soet <rhyme label="a" type="f" corresp="#s1:l1">taeltjen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Hoort-men heele daghen <rhyme label="b" type="m">langh</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Noch het <rhyme label="c" type="f">daelen</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Van de <rhyme label="c" type="f" corresp="#s1:l4">stralen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">En beletten uwen <rhyme label="b" type="m" corresp="#s1:l3">sangh</rhyme>;</l>
        <l id="s1:l7" met="2" type="+-">WeÃªr het <rhyme label="d" type="f">luyster</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Is, oft <rhyme label="d" type="f" corresp="#s1:l7">duyster</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Ghy fluyt altydt even <rhyme label="e" type="m">seer</rhyme>,</l>
        <l id="s1:l10" met="2" type="+-">Ghy blyft <rhyme label="f" type="f">singhen</rhyme></l>
        <l id="s1:l11" met="2" type="+-">Ende <rhyme label="f" type="f" corresp="#s1:l10">klinghen</rhyme>,</l>
        <l id="s1:l12" met="4" type="+-">Ghy looft altydt uwen <rhyme label="e" type="m" corresp="#s1:l9">Heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">
          <rhyme label="a" type="f">Nachtegaeltjen</rhyme>
        </l>
        <l id="s2:l2" met="2" type="+-">Leent m'uw <rhyme label="a" type="f" corresp="#s2:l1">taeltjen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Op dat ick Godt nacht en <rhyme label="b" type="m">dagh</rhyme>,</l>
        <l id="s2:l4" met="2" type="+-">Soo in <rhyme label="c" type="f">lyden</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Als <rhyme label="c" type="f" corresp="#s2:l4">verblyden</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Loven en de dancken <rhyme label="b" type="m" corresp="#s2:l3">magh</rhyme>;</l>
        <l id="s2:l7" met="2" type="+-">Leert my <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s2:l8" met="2" type="+-">Godt daer <rhyme label="d" type="f" corresp="#s2:l7">boven</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Al lyd' ick beneden <rhyme label="e" type="m">pyn</rhyme>,</l>
        <l id="s2:l10" met="2" type="+-">Als het <rhyme label="f" type="f">schynen</rhyme></l>
        <l id="s2:l11" met="2" type="+-">Gaet <rhyme label="f" type="f" corresp="#s2:l10">verdwynen</rhyme></l>
        <l id="s2:l12" met="4" type="+-">Van den blyden <rhyme label="e" type="m" corresp="#s2:l9">Sonne-schyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">'k Wil by <rhyme label="a" type="f">daghen</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Godt <rhyme label="a" type="f" corresp="#s3:l1">behaghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Als de Sonn' schynt van <rhyme label="b" type="m">gheluck</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">'k wil oock <rhyme label="c" type="f">trachten</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Godt by <rhyme label="c" type="f" corresp="#s3:l4">nachten</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Lof te singhen in den <rhyme label="b" type="m" corresp="#s3:l3">druck</rhyme>;</l>
        <l id="s3:l7" met="2" type="+-">Syn' <rhyme label="d" type="f">Lof-sanghen</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Sullen <rhyme label="d" type="f" corresp="#s3:l7">hanghen</rhyme></l>
        <l id="s3:l9" met="4" type="+-">Op myn' tongh' tot alder <rhyme label="e" type="m">tydt</rhyme>:</l>
        <l id="s3:l10" met="2" type="+-">'k Sal een <rhyme label="f" type="f">dinghen</rhyme></l>
        <l id="s3:l11" met="2" type="+-">Altydt <rhyme label="f" type="f" corresp="#s3:l10">singhen</rhyme>,</l>
        <l id="s3:l12" met="4" type="+-">Heere zyt <rhyme label="e" type="m" corresp="#s3:l9">ghebenedydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
