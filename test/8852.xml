    <melody>Aan watervlieten Babylon</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAerom verstoot ghy ons in <rhyme label="a" type="m">Leydt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En zijt vergramt dus <rhyme label="b" type="f">HEEre</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Al op de Schaepens uwer <rhyme label="a" type="m" corresp="#s1:l1">Weyd'</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die men vermoort so <rhyme label="b" type="f" corresp="#s1:l2">seere</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Ghedenckt aen dijn Ghemeynte <rhyme label="c" type="m">reyn</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Die ghy vercoren hebt <rhyme label="c" type="m" corresp="#s1:l5">Alleyn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En duyr ghecocht tot <rhyme label="d" type="f">Erven</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Dijns Erffdeels Lustich ende <rhyme label="e" type="m">schoon</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Aen Zyons Berghe daer ghy <rhyme label="e" type="m" corresp="#s1:l8">woont</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Die men nu siet <rhyme label="d" type="f" corresp="#s1:l7">bederven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met Voeten treetse Godt all' <rhyme label="a" type="m">om</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Haer pochen stoot te <rhyme label="b" type="f">gronde</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">De Vyandt heeft int <rhyme label="a" type="m" corresp="#s2:l1">Heylichdom</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Verdorven wat hy <rhyme label="b" type="f" corresp="#s2:l2">vonde</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Dijn Wedersegghers brullen <rhyme label="c" type="m">seer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">End' in dijn huys oock hebben, <rhyme label="c" type="m" corresp="#s2:l5">Heer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Sy haren Godt <rhyme label="d" type="f">ghestellet</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Tot uwer Oneer en <rhyme label="e" type="m">Verdriet</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">De Bijlen hooch men blincken <rhyme label="e" type="m" corresp="#s2:l8">siet</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Ghelijck men een Bosch <rhyme label="d" type="f" corresp="#s2:l7">vellet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sy houwen dijne Taeffel <rhyme label="a" type="m">werck</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In stuck met Baers en <rhyme label="b" type="f">Bijlen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ons wy die op dijn Macht (Heer <rhyme label="a" type="m" corresp="#s3:l1">sterck</rhyme>)</l>
        <l id="s3:l4" met="3" type="-+">End' woort vast staen als <rhyme label="b" type="f" corresp="#s3:l2">Stijlen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die plaghen sy en brenghens' <rhyme label="c" type="m">om</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">End' werpen oock dijn <rhyme label="c" type="m" corresp="#s3:l5">Heylichdom</rhyme></l>
        <l id="s3:l7" met="3" type="-+">In t'Vyer haer moedt te <rhyme label="d" type="f">stillen</rhyme>.</l>
        <l id="s3:l8" met="4" type="-+">Te grond' ontwijden sy gantsch <rhyme label="e" type="m">gaer</rhyme></l>
        <l id="s3:l9" met="4" type="-+">De Wooninghen dijns Names <rhyme label="e" type="m" corresp="#s3:l8">daer</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Die sy niet kennen <rhyme label="d" type="f" corresp="#s3:l7">willen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want in haer hert sy spreken <rhyme label="a" type="m">daer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Laet ons haer nu <rhyme label="b" type="f">berooven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En gantsch wtroeyden <rhyme label="a" type="m" corresp="#s4:l1">allegaer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met tsaem haer nieuw' <rhyme label="b" type="f" corresp="#s4:l2">Gheloove</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Alsoo verbranden sy met <rhyme label="c" type="m">schand'</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">All' Godes Steden in den <rhyme label="c" type="m" corresp="#s4:l5">Land'</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dat wy nu sien niet <rhyme label="d" type="f">meere</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Ons teecken goet, noch daer is, <rhyme label="e" type="m">Heer</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Nu geen Propheet noch Leeraer <rhyme label="e" type="m" corresp="#s4:l8">meer</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">By ons, die ons mach <rhyme label="d" type="f" corresp="#s4:l7">Leeren</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe lang' sal u de Vyandt <rhyme label="a" type="m">(Godt</rhyme>)</l>
        <l id="s5:l2" met="3" type="-+">Versmaeden end' <rhyme label="b" type="f">Blameeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hoe langs hoe meer dijn Naem <rhyme label="a" type="m" corresp="#s5:l1">bespot</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Tot Nae deel dijner <rhyme label="b" type="f" corresp="#s5:l2">Eeren</rhyme>?</l>
        <l id="s5:l5" met="4" type="-+">Waerom gaet ghy dijn Handt so <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Dijn Rechter handt van dijnen <rhyme label="c" type="m" corresp="#s5:l5">schoot</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">HEER so gheheel <rhyme label="d" type="f">affwenden</rhyme>?</l>
        <l id="s5:l8" met="4" type="-+">Maer nochtans Godt van <rhyme label="e" type="m">Eewicheet</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Is Coninck die op Aerden <rhyme label="e" type="m" corresp="#s5:l8">breet</rhyme></l>
        <l id="s5:l10" met="3" type="-+">All' hulpe gaet <rhyme label="d" type="f" corresp="#s5:l7">bethoonen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Door dijne Cracht deylt ghy dat <rhyme label="a" type="m">Meyr</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Der Draken Cop ghy <rhyme label="b" type="f">brecken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Int Water end' met all' syn <rhyme label="a" type="m" corresp="#s6:l1">Heyr</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat dijn Volck hem <rhyme label="b" type="f" corresp="#s6:l2">begecken</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Den Cop des Walvischs ghy <rhyme label="c" type="m">verslaet</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dien Volck dat in Woestijnen <rhyme label="c" type="m" corresp="#s6:l5">gaet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ghy hem tot Spijse <rhyme label="d" type="f">senden</rhyme>.</l>
        <l id="s6:l8" met="4" type="-+">Fonteyns int drooge maeckt ghy <rhyme label="e" type="m">(Heer</rhyme>)</l>
        <l id="s6:l9" met="4" type="-+">Rivieren groot verdroocht ghy <rhyme label="e" type="m" corresp="#s6:l8">weer</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">En dat om dijn <rhyme label="d" type="f" corresp="#s6:l7">Elenden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Beyd' Dach en Nacht all' dijne <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Want ghy't Alleen <rhyme label="b" type="f">bereydet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">De Sonn' en Sterren ghy so <rhyme label="a" type="m" corresp="#s7:l1">fijn</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Hooch aen den HEmel <rhyme label="b" type="f" corresp="#s7:l2">leydet</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Een yeder Landt syn Palen <rhyme label="c" type="m">sett</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Ghy maeckt Winter end' Somer <rhyme label="c" type="m" corresp="#s7:l5">net</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">So wilt dan eens <rhyme label="d" type="f">ghedencken</rhyme></l>
        <l id="s7:l8" met="4" type="-+">Hoe seer de Vyandt Godt <rhyme label="e" type="m">versmaet</rhyme>,</l>
        <l id="s7:l9" met="4" type="-+">Een dwaes Volck dy Blameeren <rhyme label="e" type="m" corresp="#s7:l8">gaet</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Dat welcke my doet <rhyme label="d" type="f" corresp="#s7:l7">Crencken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">En geeft den Dieren niet O <rhyme label="a" type="m">HEEr</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Dijns Tortelduyven <rhyme label="b" type="f">Siele</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Vergeet doch mijns oock <rhyme label="a" type="m" corresp="#s8:l1">nimmermeer</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Maeckt datmen niet <rhyme label="b" type="f" corresp="#s8:l2">Verniele</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Dijn Armen, Maer O Heer <rhyme label="c" type="m">ghedenckt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Hoe dijn Verbondt is seer <rhyme label="c" type="m" corresp="#s8:l5">ghecrenckt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Want t'Landt is <rhyme label="d" type="f">Jammerlijcken</rhyme></l>
        <l id="s8:l8" met="4" type="-+">Verwoest, de Huysen ligghen <rhyme label="e" type="m">neer</rhyme>,</l>
        <l id="s8:l9" met="4" type="-+">Laet die Gheringen met <rhyme label="e" type="m" corresp="#s8:l8">Oneer</rhyme></l>
        <l id="s8:l10" met="3" type="-+">So niet gaen <rhyme label="d" type="f" corresp="#s8:l7">schaemelijcken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Want d'Armen en d' Elenden <rhyme label="a" type="m">(Godt</rhyme>)</l>
        <l id="s9:l2" met="3" type="-+">Die Prijsen dijnen <rhyme label="b" type="f">Name</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Staet op (Heer) end' verdrijff den <rhyme label="a" type="m" corresp="#s9:l1">spot</rhyme></l>
        <l id="s9:l4" met="3" type="-+">De Godloos doch <rhyme label="b" type="f" corresp="#s9:l2">beschame</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Ghedenckt aen die daeg'lijcxsche <rhyme label="c" type="m">smae</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Die van den Dwasen dy gaet <rhyme label="c" type="m" corresp="#s9:l5">nae</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Vergeet om dijns Naems <rhyme label="d" type="f">Eere</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">Dijns Vyants roepen geensins <rhyme label="e" type="m">HEer</rhyme>,</l>
        <l id="s9:l9" met="4" type="-+">Haer Raesen wass't hoe langs hoe <rhyme label="e" type="m" corresp="#s9:l8">meer</rhyme></l>
        <l id="s9:l10" met="3" type="-+">Dies help ons GOdt mijn <rhyme label="d" type="f" corresp="#s9:l7">HEERE</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
