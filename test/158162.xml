  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Hoe kan de <rhyme label="a" type="f">Liefde</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Jemants hert <rhyme label="b" type="f">ontrusten</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Hoe woelt een minnaer die getrouw <rhyme label="c" type="m">bemint</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Eer hy bekomt zijn Lank gewenste <rhyme label="b" type="f" corresp="#s1:l2">Lusten</rhyme>,</l>
        <l id="s1:l5" met="5" type="-+">heeft hij deselve Duysentmael <rhyme label="c" type="m" corresp="#s1:l3">verdient</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Daer zijn geen <rhyme label="d" type="f">pijnen</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Die pijnelijk <rhyme label="d" type="f" corresp="#s1:l6">schijnen</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">Vermits de Liefde alles <rhyme label="c" type="m" corresp="#s1:l3">overwind</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Want al ons <rhyme label="e" type="f">lijden</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Verkeert in <rhyme label="e" type="f" corresp="#s1:l9">verblijden</rhyme>,</l>
        <l id="s1:l11" met="5" type="+-">Wanneer de Liefde weeder Liefde <rhyme label="c" type="m" corresp="#s1:l3">vind</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
