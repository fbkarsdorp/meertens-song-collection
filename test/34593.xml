      <category translation="amusement">vermaak</category>
    </categories>
  <author>Jan Mommaert</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WIlt ghy my <rhyme label="a" type="f">borghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ey seght het lieven <rhyme label="b" type="m">Weerdt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dit vreest ghy voor de <rhyme label="a" type="f" corresp="#s1:l1">sorghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En haren krommen <rhyme label="b" type="m" corresp="#s1:l2">steert</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Ick sie wel aen u <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ghy wilt bermhertigh <rhyme label="c" type="f" corresp="#s1:l5">wesen</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Sa langht de <rhyme label="d" type="m">kan</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Voor ons <rhyme label="d" type="m" corresp="#s1:l7">ghespan</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Langh leve sulcken <rhyme label="d" type="m" corresp="#s1:l7">man</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Schoon wy al <rhyme label="a" type="f">kaeltjens</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En licht zyn <rhyme label="b" type="m">toe-gherust</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">'t Goudt wacht naer ons met <rhyme label="a" type="f" corresp="#s2:l1">baeltjens</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Op d'Indiaensche <rhyme label="b" type="m" corresp="#s2:l2">kust</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En komt het niet te <rhyme label="c" type="f">voorschyn</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">'t Sal door toe-back en smoor <rhyme label="c" type="f" corresp="#s2:l5">zyn</rhyme>:</l>
        <l id="s2:l7" met="2" type="-+">Want geldt oft <rhyme label="d" type="m">goudt</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Hem niet en <rhyme label="d" type="m" corresp="#s2:l7">houdt</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Daer-men soo dompt en <rhyme label="d" type="m" corresp="#s2:l7">brouwt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Handen als <rhyme label="a" type="f">roosters</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En potten nimmer <rhyme label="b" type="m">geldt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Al zyn de schyven <rhyme label="a" type="f" corresp="#s3:l1">troosters</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wat helpt al hun <rhyme label="b" type="m" corresp="#s3:l2">ghewelt</rhyme>?</l>
        <l id="s3:l5" met="3" type="-+">Aen gasten die soo <rhyme label="c" type="f">smeeren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En alle daghen <rhyme label="c" type="f" corresp="#s3:l5">teren</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">En daer den <rhyme label="d" type="m">wyn</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Niet als met <rhyme label="d" type="m" corresp="#s3:l7">pyn</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Een uerken af magh <rhyme label="d" type="m" corresp="#s3:l7">zyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Doch de <rhyme label="a" type="f">robynen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die in myn troni <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hebb' ick door goede <rhyme label="a" type="f" corresp="#s4:l1">wynen</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Verliest myn beurs daer <rhyme label="b" type="m" corresp="#s4:l2">aen</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">Hebb' ick gheen geldt ten <rhyme label="c" type="f">besten</rhyme>?</l>
        <l id="s4:l6" met="3" type="-+">'k Laet die in pandt ten <rhyme label="c" type="f" corresp="#s4:l5">lesten</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Myn lieve <rhyme label="d" type="m">Weerdt</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Is 't al <rhyme label="d" type="m" corresp="#s4:l7">verteert</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Die zyn u noch wat <rhyme label="d" type="m" corresp="#s4:l7">weerdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
