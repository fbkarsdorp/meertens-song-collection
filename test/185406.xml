    <tags/>
    <melody>De lustelijke mei is nu in de tijd</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Buyght u onder Godts stercke <rhyme label="a" type="m">hant</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Als u yets comt <rhyme label="b" type="f">ontmoeten</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Denckt, Godt is my het liefste <rhyme label="a" type="m" corresp="#s1:l1">pant</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat sal u pijn <rhyme label="b" type="f" corresp="#s1:l2">versoeten</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Al wat u hier mach comen <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">‘t Sy oock waer datter comt van <rhyme label="c" type="m" corresp="#s1:l5">daen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En siet niet op de <rhyme label="d" type="f">Menschen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Soo krijght ghy al u <rhyme label="d" type="f" corresp="#s1:l7">wenschen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Alles wat Iob hier over <rhyme label="a" type="m">quam</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hy ontfinght van den <rhyme label="b" type="f">Heere</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Wanneer hy sprack: Godt gaf, Godt <rhyme label="a" type="m" corresp="#s2:l1">nam</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Laet dit u sijn een <rhyme label="b" type="f" corresp="#s2:l2">Leere</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Hoe wel de menschen deden ‘t <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Nochtans ten was niet sonder <rhyme label="c" type="m" corresp="#s2:l5">raet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Noch sonder macht van <rhyme label="d" type="f">boven</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Daerom cond’ Iob Godt <rhyme label="d" type="f" corresp="#s2:l7">loven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">David doen hy te lijden <rhyme label="a" type="m">had</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van Absalom sijn <rhyme label="b" type="f">Sone</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Simei hem in den wege <rhyme label="a" type="m" corresp="#s3:l1">trad</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En deed’ hem smaat en <rhyme label="b" type="f" corresp="#s3:l2">hoone</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy sprack met lieffelijcke <rhyme label="c" type="m">stem</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Godt hevet doch geheeten <rhyme label="c" type="m" corresp="#s3:l5">hem</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Vloeckt David in <rhyme label="d" type="f">ellenden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Godt cant eens omme <rhyme label="d" type="f" corresp="#s3:l7">wenden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Alle dinck staet in Godes <rhyme label="a" type="m">macht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Niets en can hem <rhyme label="b" type="f">bewegen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ten sy dat Godt daer op heeft <rhyme label="a" type="m" corresp="#s4:l1">acht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daerom de vrome <rhyme label="b" type="f" corresp="#s4:l2">plegen</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Van Godt te nemen alle <rhyme label="c" type="m">dinck</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">‘t Sy hoe ‘t oock in de werelt <rhyme label="c" type="m" corresp="#s4:l5">ginck</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Maer die dit licht <rhyme label="d" type="f">ontbeeren</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Die moeten <rhyme label="d" type="f" corresp="#s4:l7">murmereren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dit is den gront van <rhyme label="a" type="m">lijdtsaemheyt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Alleene Godt <rhyme label="b" type="f">t’aenschouwen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dien gront heeft Christus selfs <rhyme label="a" type="m" corresp="#s5:l1">geleyt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Doen hy was in ‘t <rhyme label="b" type="f" corresp="#s5:l2">benouwen</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">In ‘t hofken stort hy menigen <rhyme label="c" type="m">traen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Hy sach alleen sijn Vader <rhyme label="c" type="m" corresp="#s5:l5">aen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">‘t Geen hem de menschen <rhyme label="d" type="f">deden</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Wist hy, dat had’ sijn <rhyme label="d" type="f" corresp="#s5:l7">reden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hadden de Martelaren <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">De saack niet soo <rhyme label="b" type="f">ghenomen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">S’en hadden noyt in <rhyme label="a" type="m" corresp="#s6:l1">tegenspoet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Tot lijdtsaemheyt <rhyme label="b" type="f" corresp="#s6:l2">ghecomen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Sy hielden ‘t al voor Godes <rhyme label="c" type="m">werck</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dies waren sy van binnen <rhyme label="c" type="m" corresp="#s6:l5">sterck</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En hadden vreught in ‘t <rhyme label="d" type="f">lyden</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Dat sy conden <rhyme label="d" type="f" corresp="#s6:l7">verblyden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die daer gelooft Godt al in <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die acht geen ander <rhyme label="b" type="f">dingen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Al ist verdriet, of <rhyme label="a" type="m" corresp="#s7:l1">ongeval</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hy can daer over <rhyme label="b" type="f" corresp="#s7:l2">springen</rhyme>;</l>
        <l id="s7:l5" met="4" type="-+">Want Godt ontvalt gheen dinck hoe <rhyme label="c" type="m">cleen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Soo wie dan is met Godt <rhyme label="c" type="m" corresp="#s7:l5">gemeen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die en can niet <rhyme label="d" type="f">verliesen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Verliest hy maer ‘t <rhyme label="d" type="f" corresp="#s7:l7">verkiesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Godts Liefde altijt vierigh <rhyme label="a" type="m">brant</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">De sijne te <rhyme label="b" type="f">ghenesen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">‘t Faeljeert hem niet aen geenen <rhyme label="a" type="m" corresp="#s8:l1">cant</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Al schijnt het vremt te <rhyme label="b" type="f" corresp="#s8:l2">wesen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Men seyt: God doet nimmermeer <rhyme label="c" type="m">quaet</rhyme>.</l>
        <l id="s8:l6" met="4" type="-+">‘t Is waer: hy hout daer over <rhyme label="c" type="m" corresp="#s8:l5">raet</rhyme></l>
        <l id="s8:l7" met="3" type="-+">En laet het quaet wel <rhyme label="d" type="f">comen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Tot voordeel van de <rhyme label="d" type="f" corresp="#s8:l7">vromen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Godts oogen al wat verder <rhyme label="a" type="m">sien</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Als menschen connen <rhyme label="b" type="f">dencken</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Hy laet wel ongeval <rhyme label="a" type="m" corresp="#s9:l1">geschien</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Doch geensins om te <rhyme label="b" type="f" corresp="#s9:l2">krencken</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Maer om te toonen sijne <rhyme label="c" type="m">minn</rhyme>’,</l>
        <l id="s9:l6" met="4" type="-+">Want ‘t lyden brengt een groot <rhyme label="c" type="m" corresp="#s9:l5">gewin</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Voor die ‘t gewilligh <rhyme label="d" type="f">dragen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">‘t Sijn Vaderlijcke <rhyme label="d" type="f" corresp="#s9:l7">slagen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">‘t Is beter hier een cleyne <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Ghekastijt om de <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dan datmen namaels eeuwigh <rhyme label="a" type="m" corresp="#s10:l1">lijdt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">‘t Welck David heeft <rhyme label="b" type="f" corresp="#s10:l2">bevonden</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Als hy badt om de roede <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Hy voelde wel het was hem <rhyme label="c" type="m" corresp="#s10:l5">goet</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Hierom laet ons Godt <rhyme label="d" type="f">prijsen</rhyme></l>
        <l id="s10:l8" met="3" type="-+">In ‘t geen op ons comt <rhyme label="d" type="f" corresp="#s10:l7">rijsen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
