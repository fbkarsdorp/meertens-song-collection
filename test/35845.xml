      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOort Schippers <rhyme label="a" type="f">Boots-gesellen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Buysman 'k sal uw' <rhyme label="a" type="f" corresp="#s1:l1">vertellen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe dat ghy leven <rhyme label="b" type="m">moet</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Voor dat ghy uyt wilt <rhyme label="c" type="f">varen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Uw' zonden wilt <rhyme label="c" type="f" corresp="#s1:l4">verklaren</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Gaet t' hoogh-tijdt, 't zieltje <rhyme label="b" type="m" corresp="#s1:l3">voet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Begint tot Godes <rhyme label="a" type="f">eeren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">U reys. Denckt dat uw' <rhyme label="a" type="f" corresp="#s2:l1">kleeren</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Zijn u doodts-kleedt en <rhyme label="b" type="m">kist</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat 't graf sijn <rhyme label="c" type="f">Visschen-buycken</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Want veel in de Zee <rhyme label="c" type="f" corresp="#s2:l4">duycken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Door't vallen, storm of <rhyme label="b" type="m" corresp="#s2:l3">mist</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Schout twist; houdt altijt <rhyme label="a" type="f">vreden</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Dient trouw, die aen 't schip <rhyme label="a" type="f" corresp="#s3:l1">reden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Laet 't hart op Coopmans <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dalen, noch kromme <rhyme label="c" type="f">handen</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Houdt 't hart, oogh, hant en <rhyme label="c" type="f" corresp="#s3:l4">tanden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En 't vleys suyver en <rhyme label="b" type="m" corresp="#s3:l3">bloedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'t Geloof wilt vroom <rhyme label="a" type="f">belijden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Verbode spijze <rhyme label="a" type="f" corresp="#s4:l1">mijden</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Voor Ketters zijt <rhyme label="b" type="m">vervaert</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Godt boven al wilt <rhyme label="c" type="f">vreesen</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Schipper gehoorsaem <rhyme label="c" type="f" corresp="#s4:l4">weesen</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Schout Vrouwen licht van <rhyme label="b" type="m" corresp="#s4:l3">aerdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Op-staende spreeckt <rhyme label="a" type="f">gebeden</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">En na u kop gaen <rhyme label="a" type="f" corresp="#s5:l1">meden</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Leetwesen toont van 't <rhyme label="b" type="m">quaet</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Tegenspoet, storm en <rhyme label="c" type="f">plagen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Verduldigh wilt <rhyme label="c" type="f" corresp="#s5:l4">verdragen</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Schout leugens, <rhyme label="b" type="m" corresp="#s5:l3">vuyle-praet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Stelt by uwe <rhyme label="a" type="f">Patroonen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">De Moeder van <rhyme label="a" type="f" corresp="#s6:l1">Goods-Soone</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">(De Zee-starre is <rhyme label="b" type="m">sy</rhyme>,)</l>
        <l id="s6:l4" met="3" type="-+">Sint Pieter hoogh <rhyme label="c" type="f">verheven</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Sint Michiel, en  Sint <rhyme label="c" type="f" corresp="#s6:l4">Steven</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Voeght Sint Lucam daer <rhyme label="b" type="m" corresp="#s6:l3">by</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Houdt Godt, en Doodt voor <rhyme label="a" type="f">oogen</rhyme>;</l>
        <l id="s7:l2" met="3" type="-+">Dient Godt na u <rhyme label="a" type="f" corresp="#s7:l1">vermogen</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Na Godes Wet u <rhyme label="b" type="m">voeght</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">De dronckenschap wilt <rhyme label="c" type="f">schouwe</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En al dat u sal <rhyme label="c" type="f" corresp="#s7:l4">rouwe</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Hoe 't gaet seght: 't my <rhyme label="b" type="m" corresp="#s7:l3">genoeght</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Haet Taback, dat <rhyme label="a" type="f">vernielen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gesontheyt kan, en <rhyme label="a" type="f" corresp="#s8:l1">zielen</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Berooft gelt end' <rhyme label="b" type="m">verstant</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Looft Godt met hart en <rhyme label="c" type="f">leden</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En toont hem <rhyme label="c" type="f" corresp="#s8:l4">danckbaerheden</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Als ghy komt weer aen 't <rhyme label="b" type="m" corresp="#s8:l3">Landt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Met d'huer getelt aen <rhyme label="a" type="f">schijven</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Geen quaedt wilt mee <rhyme label="a" type="f" corresp="#s9:l1">bedrijven</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Besteedt, gebruycktse <rhyme label="b" type="m">wel</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Wilt ghy de kroegen <rhyme label="c" type="f">voeden</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Verloren Soons <rhyme label="c" type="f" corresp="#s9:l4">armoeden</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Ghy krijght; namaels de <rhyme label="b" type="m" corresp="#s9:l3">Hel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Verlosser trouw! Wilt <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Dat de Zee-man met 't <rhyme label="a" type="f" corresp="#s10:l1">leven</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Dese leeringh vol <rhyme label="b" type="m">doet</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Van Turcken, Roovers, <rhyme label="c" type="f">Baren</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Storm, en Klip wilt <rhyme label="c" type="f" corresp="#s10:l4">bewaren</rhyme></l>
        <l id="s10:l6" met="3" type="-+">De Zee-man, 't Schip end' <rhyme label="b" type="m" corresp="#s10:l3">goedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
