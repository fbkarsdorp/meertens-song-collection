    <melody>Psalm 006 Datheen</melody>
  <author>Philippus van Sorgen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Dorre zielen <rhyme label="a" type="f">laver</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O groote doode <rhyme label="a" type="f" corresp="#s1:l1">graver</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wiens vaendel is het <rhyme label="b" type="m">Kruys</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Uw Kerk (magh ick ‘t so <rhyme label="c" type="f">noemen</rhyme>)</l>
        <l id="s1:l5" met="3" type="-+">Of sonder te <rhyme label="c" type="f" corresp="#s1:l4">verbloemen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">‘K segh eer een <rhyme label="b" type="m" corresp="#s1:l3">Kneeckel-huys</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Is op-ghepropt van <rhyme label="a" type="f">schoncken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die over langh al <rhyme label="a" type="f" corresp="#s2:l1">stoncken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Vermollemt en <rhyme label="b" type="m">verrot</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Vergeefs is al u <rhyme label="c" type="f">snoeyen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dor hout en wil niet <rhyme label="c" type="f" corresp="#s2:l4">groeyen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Geen doode Wijn-stock <rhyme label="b" type="m" corresp="#s2:l3">bot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer dit is te <rhyme label="a" type="f">beweenen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat dese stapel <rhyme label="a" type="f" corresp="#s3:l1">beenen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Seght datse levend’ <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gesont en wel te <rhyme label="c" type="f">passe</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">O stof, o gruys, o <rhyme label="c" type="f" corresp="#s3:l4">asse</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Gy siet de waerheyt <rhyme label="b" type="m" corresp="#s3:l3">mis</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O beenen, steenen, <rhyme label="a" type="f">sercken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wel aen toont dan u <rhyme label="a" type="f" corresp="#s4:l1">wercken</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Indien gy levend <rhyme label="b" type="m">sijt</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Ach waer mijn seggen <rhyme label="c" type="f">leugen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wat sou ick my <rhyme label="c" type="f" corresp="#s4:l4">verheugen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Wat waer Gods volck <rhyme label="b" type="m" corresp="#s4:l3">verblijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wie of uw op komt <rhyme label="a" type="f">stoocken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">O lijveloose <rhyme label="a" type="f" corresp="#s5:l1">spoocken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wie ist die u <rhyme label="b" type="m">beleeft</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wie loopen in u <rhyme label="c" type="f">schimmen</rhyme>?</l>
        <l id="s5:l5" met="3" type="-+">De Duyvelen Gods <rhyme label="c" type="f" corresp="#s5:l4">simmen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En apen van sijn <rhyme label="b" type="m" corresp="#s5:l3">Geest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die geeft gedaelt van <rhyme label="a" type="f">bove</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die geeft van ‘t reyn <rhyme label="a" type="f" corresp="#s6:l1">gelove</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die Geest die levend <rhyme label="b" type="m">maeckt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En blijft niet meer <rhyme label="c" type="f">verhoolen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Als vier of heete <rhyme label="c" type="f" corresp="#s6:l4">koolen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die branden wat haer <rhyme label="b" type="m" corresp="#s6:l3">raeckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De leugenaers der <rhyme label="a" type="f">hellen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die seggen dat haer <rhyme label="a" type="f" corresp="#s7:l1">vellen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Volkomen lijven <rhyme label="b" type="m">sijn</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Sy hebben u haer <rhyme label="c" type="f">slaven</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">De oogen <rhyme label="c" type="f" corresp="#s7:l4">uyt-gegraven</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En nu treckt op haer <rhyme label="b" type="m" corresp="#s7:l3">lijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O Iesus wordt <rhyme label="a" type="f">verbeden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En drijft dees’ <rhyme label="a" type="f" corresp="#s8:l1">onbesneden</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Eens uyt u Beede <rhyme label="b" type="m">huys</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Komt maeckt geknoopte <rhyme label="c" type="f">sweepen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En stoot met rouwe <rhyme label="c" type="f" corresp="#s8:l4">neepen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Naer buyten dit <rhyme label="b" type="m" corresp="#s8:l3">gespuys</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Of, blaes eens op die <rhyme label="a" type="f">schoncken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En stroyt een handt vol <rhyme label="a" type="f" corresp="#s9:l1">voncken</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Op’t Kerck-hof van u <rhyme label="b" type="m">Kerck</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Want al die bleecke <rhyme label="c" type="f">dooden</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Die hebben geest van <rhyme label="c" type="f" corresp="#s9:l4">nooden</rhyme>:</l>
        <l id="s9:l6" met="3" type="-+">Ey Iesus toont u <rhyme label="b" type="m" corresp="#s9:l3">sterck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Komt breeckt de graven <rhyme label="a" type="f">open</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En wilt de Lijcken <rhyme label="a" type="f" corresp="#s10:l1">doopen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Met water vier en <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Gaet been op been eerst <rhyme label="c" type="f">passen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En wilt het rift eerst <rhyme label="c" type="f" corresp="#s10:l4">wassen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En het dan so <rhyme label="b" type="m" corresp="#s10:l3">geneest</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Uw’ kracht is niet <rhyme label="a" type="f">geweecken</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">O Iesus, gantsche <rhyme label="a" type="f" corresp="#s11:l1">Beecken</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Treckt gy wel uyt een <rhyme label="b" type="m">Rots</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Gy kond een stock doen <rhyme label="c" type="f">bloeyen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Gy deed wel eertijts <rhyme label="c" type="f" corresp="#s11:l4">groeyen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Amandels aen een <rhyme label="b" type="m" corresp="#s11:l3">knots</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Send regen uyt de <rhyme label="a" type="f">hooghte</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Uw Acker splyt van <rhyme label="a" type="f" corresp="#s12:l1">drooghte</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Een yder roept op’t <rhyme label="b" type="m">meest</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Na u o ziele <rhyme label="c" type="f">lever</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Komt weyd ons in de <rhyme label="c" type="f" corresp="#s12:l4">klaver</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Van u beloofde <rhyme label="b" type="m" corresp="#s12:l3">Geest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
