  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHeen tonghen, Maghet <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Noch Enghels <rhyme label="b" type="m">verstandt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En kan uwen lof noch <rhyme label="c" type="m">prijs</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Van uw' deughden <rhyme label="a" type="m" corresp="#s1:l1">openbaer</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Spreken, doe <rhyme label="b" type="m" corresp="#s1:l2">bystandt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">O Maria Maghtet <rhyme label="c" type="m" corresp="#s1:l3">wijs</rhyme>:</l>
        <l id="s1:l7" met="3" type="+-">Gheeft mijn tonghe <rhyme label="d" type="m">macht</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Dat ick met alle <rhyme label="d" type="m" corresp="#s1:l7">kracht</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Mocht singhen oock met <rhyme label="e" type="m">vreught</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Vwe alder hande <rhyme label="e" type="m" corresp="#s1:l9">deught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want Moeder ende <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Ongheschent zijt <rhyme label="b" type="m">ghy</rhyme></l>
        <l id="s2:l3" met="4" type="+-">In het baren voor en <rhyme label="c" type="m">naer</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hebt Iesum seer <rhyme label="a" type="m" corresp="#s2:l1">behaeght</rhyme></l>
        <l id="s2:l5" met="3" type="+-">Met eene siel' <rhyme label="b" type="m" corresp="#s2:l2">bly</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Als ghy blijdschap hebt <rhyme label="c" type="m" corresp="#s2:l3">voorwaer</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Verspreydt over <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Vw' deught sonder <rhyme label="d" type="m" corresp="#s2:l7">ghetal</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Ghy sijt <rhyme label="e" type="m">ghebenedijdt</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Onder vrouwen t'allen <rhyme label="e" type="m" corresp="#s2:l9">tijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het duyvlesche <rhyme label="a" type="m">ghespuys</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Gy Maghet <rhyme label="b" type="m">verjaeght</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Want den sondaer armen <rhyme label="c" type="m">mensch</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Met sware sonden <rhyme label="a" type="m" corresp="#s3:l1">confuys</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Maeckt dat hy <rhyme label="b" type="m" corresp="#s3:l2">bejaeght</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Heer Iesum sijnen <rhyme label="c" type="m" corresp="#s3:l3">wensch</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">Verweckt tot <rhyme label="d" type="m">berouw</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Maria stercke <rhyme label="d" type="m" corresp="#s3:l7">vrouw</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Den sondaer alsoo <rhyme label="e" type="m">groot</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Staet ghy by in sijnen <rhyme label="e" type="m" corresp="#s3:l9">noot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">In s'wereldtsche <rhyme label="a" type="m">tonneel</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Sijt ghy een peirel <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Blinckt als eenen <rhyme label="c" type="m">diamant</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Verlicht de wereldt <rhyme label="a" type="m" corresp="#s4:l1">geheel</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Sijt voor Iesus <rhyme label="b" type="m" corresp="#s4:l2">throon</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Een lamp die gedurich <rhyme label="c" type="m" corresp="#s4:l3">brandt</rhyme>;</l>
        <l id="s4:l7" met="3" type="+-">Sijt een Maghet <rhyme label="d" type="m">puer</rhyme>,</l>
        <l id="s4:l8" met="2" type="+-">Van d'engelsche <rhyme label="d" type="m" corresp="#s4:l7">natuer</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">De croon der Maeghden <rhyme label="e" type="m">fijn</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">Onbevlecht van sonden <rhyme label="e" type="m" corresp="#s4:l9">reyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">In't hemelsche <rhyme label="a" type="m">gebiedt</rhyme></l>
        <l id="s5:l2" met="3" type="+-">(O Maghet <rhyme label="b" type="m">plaisand</rhyme>)</l>
        <l id="s5:l3" met="4" type="+-">Wordt de glori' heel <rhyme label="c" type="m">volmaeckt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Die d'engelen <rhyme label="a" type="m" corresp="#s5:l1">geschiedt</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Blijdschap <rhyme label="b" type="m" corresp="#s5:l2">abondant</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Droefheydt wordt daer heel <rhyme label="c" type="m" corresp="#s5:l3">versaeckt</rhyme>.</l>
        <l id="s5:l7" met="3" type="+-">t'Isser al <rhyme label="d" type="m">ghenucht</rhyme>,</l>
        <l id="s5:l8" met="2" type="+-">Men hoorter kerm noch <rhyme label="d" type="m" corresp="#s5:l7">sucht</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Daer ghy Maria <rhyme label="e" type="m">zijt</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">Want het wort daer al <rhyme label="e" type="m" corresp="#s5:l9">verblijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Oorlof edel <rhyme label="a" type="m">Princes</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Ghy sijt <rhyme label="b" type="m">goedertier</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Want ons hulpe doch <rhyme label="c" type="m">ghemeen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Sijt ghy in ons <rhyme label="a" type="m" corresp="#s6:l1">proces</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">Doet ons dit <rhyme label="b" type="m" corresp="#s6:l2">plaisier</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Dat Heer Iesus ons <rhyme label="c" type="m" corresp="#s6:l3">verleen</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Hier gratie <rhyme label="d" type="m">sterck</rhyme></l>
        <l id="s6:l8" met="2" type="+-">In allen ons <rhyme label="d" type="m" corresp="#s6:l7">bewerck</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Ten hemel goede <rhyme label="e" type="m">succes</rhyme>,</l>
        <l id="s6:l10" met="4" type="+-">Hierom bidden wy <rhyme label="e" type="m" corresp="#s6:l9">Princes</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
