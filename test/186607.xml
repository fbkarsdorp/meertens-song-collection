    <melody>Liefde die van alle tijden</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Welk een schittring, welke <rhyme label="a" type="f">straalen</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">Welk een glans, daar't al voor <rhyme label="b" type="m">zwicht</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Zien wij op ons <rhyme label="a" type="f" corresp="#s1:l1">nederdaalen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Tot versterking van't <rhyme label="b" type="m" corresp="#s1:l2">gezicht</rhyme>!</l>
        <l id="s1:l5" met="2" type="-+">Men voelt van <rhyme label="c" type="f">binnen</rhyme></l>
        <l id="s1:l6" met="2" type="-+">De ziel en <rhyme label="c" type="f" corresp="#s1:l5">zinnen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">schoon eertijds duister, nu <rhyme label="b" type="m" corresp="#s1:l2">verlicht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want nu zien wy eerst op <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Dat Sint Peters <rhyme label="b" type="m">Broederschap</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Steunende op de deugd en <rhyme label="a" type="f" corresp="#s2:l1">reden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Waard' is aller <rhyme label="b" type="m" corresp="#s2:l2">handgeklap</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Zy duld <rhyme label="c" type="f">gebreken</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Noch slinksche <rhyme label="c" type="f" corresp="#s2:l5">streeken</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">En stygt ten hoogsten <rhyme label="b" type="m" corresp="#s2:l2">glorietrap</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Laaten andren zich <rhyme label="a" type="f">vermaaken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In de staatzucht, weelde en <rhyme label="b" type="m">pragt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Of naar goud en schatten <rhyme label="a" type="f" corresp="#s3:l1">haaken</rhyme>!</l>
        <l id="s3:l4" met="4" type="+-">Zulken worden hier <rhyme label="b" type="m" corresp="#s3:l2">verächt</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">De Orde van <rhyme label="c" type="f">Peter</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Baart vruchten, <rhyme label="c" type="f" corresp="#s3:l5">beter</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Dan die een Vrek van rykdom <rhyme label="b" type="m" corresp="#s3:l2">wacht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">En schoon veel verwaande <rhyme label="a" type="f">Lieden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dwaazer dan het plomp <rhyme label="b" type="m">Gemeen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Onze daaden naauw <rhyme label="a" type="f" corresp="#s4:l1">bespieden</rhyme></l>
        <l id="s4:l4" met="4" type="+-">En die laaken zonder <rhyme label="b" type="m" corresp="#s4:l2">reên</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">De reine <rhyme label="c" type="f">zeden</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Van onze <rhyme label="c" type="f" corresp="#s4:l5">Leden</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Bewyzen hunne <rhyme label="b" type="m" corresp="#s4:l2">onbillykheên</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Kunne vol <rhyme label="a" type="f">bevalligheden</rhyme>!</l>
        <l id="s5:l2" met="4" type="+-">Stel 't vooröordeel aan een' <rhyme label="b" type="m">kant</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Nooit word gy zo <rhyme label="a" type="f" corresp="#s5:l1">aangebeden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Als van ons met hart en <rhyme label="b" type="m" corresp="#s5:l2">hand</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">U steeds te <rhyme label="c" type="f">minnen</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Uw hart te <rhyme label="c" type="f" corresp="#s5:l5">winnen</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Schraagt Peters Orde in <rhyme label="b" type="m" corresp="#s5:l2">Nederland</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Broeders! laaten we ons <rhyme label="a" type="f">vermaaken</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">En van harte zyn <rhyme label="b" type="m">verblyd</rhyme>!</l>
        <l id="s6:l3" met="4" type="+-">Want schoon we allen misbruik <rhyme label="a" type="f" corresp="#s6:l1">laaken</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Vrolykheid heeft ook haar <rhyme label="b" type="m" corresp="#s6:l2">tyd</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">De <rhyme label="c" type="f">Vrolykheden</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Bestierd naar <rhyme label="c" type="f" corresp="#s6:l5">reden</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Zyn altoos van berouw <rhyme label="b" type="m" corresp="#s6:l2">bevryd</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ziet my, vaardig op uw <rhyme label="a" type="f">wenken</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Vry van alle <rhyme label="b" type="m">dwinglandy</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">'t Druivezap in 't glaasje <rhyme label="a" type="f" corresp="#s7:l1">schenken</rhyme>!</l>
        <l id="s7:l4" met="4" type="+-">Broeders! doet dit nevens <rhyme label="b" type="m" corresp="#s7:l2">my</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">En drinkt ter <rhyme label="c" type="f">eere</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Der wyze <rhyme label="c" type="f" corresp="#s7:l5">Leere</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Van Peters Broederschap aan 't <rhyme label="b" type="m" corresp="#s7:l2">Y</rhyme>.</l>
      </lg>
    </lg>
  </text>
