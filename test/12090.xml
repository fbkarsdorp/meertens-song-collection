    <tags/>
    <melody>Aanhoor toch mijn geklaag gij ruiters</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AEnhoort toch mijn <rhyme label="a" type="m">gheklach</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O Heer’ der <rhyme label="b" type="f">Seraphinnen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ick treur’ nacht ende <rhyme label="a" type="m" corresp="#s1:l1">dach</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wel ick beklaghen <rhyme label="a" type="m" corresp="#s1:l1">mach</rhyme></l>
        <l id="s1:l5" met="3" type="-+">De sond’ daer ick in <rhyme label="a" type="m" corresp="#s1:l1">lach</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Ick bid v om <rhyme label="a" type="m" corresp="#s1:l1">verdrach</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">O Heer’ der <rhyme label="b" type="f" corresp="#s1:l2">Seraphinnen</rhyme>,,</l>
        <l id="s1:l8" met="2" type="+-"><rhyme label="b" type="f" corresp="#s1:l2">Seraphinnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Beroert wort al mijn <rhyme label="a" type="m">bloet</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Beroert zijn al mijn <rhyme label="b" type="f">sinnen</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Maer ick sal metter <rhyme label="a" type="m" corresp="#s2:l1">spoet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">My worpen inden <rhyme label="a" type="m" corresp="#s2:l1">vloet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Van Iesus wonden <rhyme label="a" type="m" corresp="#s2:l1">soet</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Neemt my doch in <rhyme label="a" type="m" corresp="#s2:l1">behoet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">O Heer’ der <rhyme label="b" type="f" corresp="#s2:l2">Cherubinnen</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-"><rhyme label="b" type="f" corresp="#s2:l2">Cherubinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Nu hoort toch al hier <rhyme label="a" type="m">naer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ghy sondaers in’t <rhyme label="b" type="f">ghemeene</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Een sondaresse <rhyme label="a" type="m" corresp="#s3:l1">swaer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">By schoonen daghe <rhyme label="a" type="m" corresp="#s3:l1">klaer</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Wascht Iesus <rhyme label="a" type="m" corresp="#s3:l1">openbaer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En drooght hem met heur <rhyme label="a" type="m" corresp="#s3:l1">haer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die soete <rhyme label="b" type="f" corresp="#s3:l2">Magdeleene</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-"><rhyme label="b" type="f" corresp="#s3:l2">Magdeleene</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Al was sy onreyn <rhyme label="a" type="m">saen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van hoofde tot den <rhyme label="b" type="f">teene</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Haer tranen kosten <rhyme label="a" type="m" corresp="#s4:l1">dwaen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Al dat sy hadd’ <rhyme label="a" type="m" corresp="#s4:l1">misdaen</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Och wat een blijd <rhyme label="a" type="m" corresp="#s4:l1">vermaen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Hierom roep ick v <rhyme label="a" type="m" corresp="#s4:l1">aen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">O soete <rhyme label="b" type="f" corresp="#s4:l2">Magdeleene</rhyme>,</l>
        <l id="s4:l8" met="2" type="+-"><rhyme label="b" type="f" corresp="#s4:l2">Magdeleene</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ick ben seer swaer <rhyme label="a" type="m">belast</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Mijn siel’ is seer <rhyme label="b" type="f">onreene</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Mijn sonde altijts <rhyme label="a" type="m" corresp="#s5:l1">wast</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Och neemt my af mijn <rhyme label="a" type="m" corresp="#s5:l1">last</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Eer my de doodt <rhyme label="a" type="m" corresp="#s5:l1">verrast</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Ghy zijt mijns Schipkens <rhyme label="a" type="m" corresp="#s5:l1">mast</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">O soete <rhyme label="b" type="f" corresp="#s5:l2">Magdeleene</rhyme>,</l>
        <l id="s5:l8" met="2" type="+-"><rhyme label="b" type="f" corresp="#s5:l2">Magdeleene</rhyme>.</l>
      </lg>
    </lg>
  </text>
