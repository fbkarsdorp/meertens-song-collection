  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VAder van ons <rhyme label="a" type="m">Vader-landt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Laet my u, Eligi, <rhyme label="b" type="f">loven</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die 't gheloof ons hebt <rhyme label="a" type="m" corresp="#s1:l1">gheplant</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ons ghesonden van daer <rhyme label="b" type="f" corresp="#s1:l2">boven</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Door u 't heylich zielen <rhyme label="c" type="m">licht</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Is ghecomen in't <rhyme label="c" type="m" corresp="#s1:l5">ghesicht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">In te groote <rhyme label="a" type="m">duysternis</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Had Antvverpen langh <rhyme label="b" type="f">ghesteken</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">In claer Sonne-schijn die <rhyme label="a" type="m" corresp="#s2:l1">is</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Eerst verandert door u <rhyme label="b" type="f" corresp="#s2:l2">preken</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">G' hebt haer van <rhyme label="c" type="m">afgodery</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Van de sond' ghemaect haer <rhyme label="c" type="m" corresp="#s2:l5">vry</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Door u leeringh en u <rhyme label="a" type="m">deught</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Is de deught in haer <rhyme label="b" type="f">begonnen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'t Saedt daer Godt hem in <rhyme label="a" type="m" corresp="#s3:l1">verheught</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Door u sweet daer is <rhyme label="b" type="f" corresp="#s3:l2">ghewonnen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Daer is door u <rhyme label="c" type="m">neersticheydt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Aen den Heer den ooghst <rhyme label="c" type="m" corresp="#s3:l5">bereyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">In het goudt hadt ghy <rhyme label="a" type="m">ghevrocht</rhyme></l>
        <l id="s4:l2" met="4" type="+-">In het hof met scherpe <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die nu Bischop ons <rhyme label="a" type="m" corresp="#s4:l1">ghebrocht</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Hebt het heylich goudt der <rhyme label="b" type="f" corresp="#s4:l2">minnen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Uyt de mijnen van den <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Die ghy hier beminde <rhyme label="c" type="m" corresp="#s4:l5">seer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als Apostel van ons <rhyme label="a" type="m">Stadt</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Wy dan u met reden <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Die den duyvel eerst <rhyme label="a" type="m" corresp="#s5:l1">besat</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Nu gheworden 't lot des <rhyme label="b" type="f" corresp="#s5:l2">Heeren</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Die daer nu noch wort <rhyme label="c" type="m">ghedient</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Wort door u daer noch <rhyme label="c" type="m" corresp="#s5:l5">bemint</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Maer voor al die zijn <rhyme label="a" type="m">ontaert</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Wilt met u ghebedt noch <rhyme label="b" type="f">sorghen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Daer Godt, van u gh' <rhyme label="a" type="m" corresp="#s6:l1">openbaert</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Door de sond' aen is <rhyme label="b" type="f" corresp="#s6:l2">verborghen</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Staet al, die door <rhyme label="c" type="m">kettery</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Zijn verleyt, als Vader, <rhyme label="c" type="m" corresp="#s6:l5">by</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Doet in alle rechte <rhyme label="a" type="m">deught</rhyme></l>
        <l id="s7:l2" met="4" type="+-">In u Stadt de borghers <rhyme label="b" type="f">groeien</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Tot des Heerens en u <rhyme label="a" type="m" corresp="#s7:l1">vreught</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">In een nieuwe jeught <rhyme label="b" type="f" corresp="#s7:l2">herbloeien</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Op dat sy in 't hemels <rhyme label="c" type="m">hof</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Godt en u eens singhen <rhyme label="c" type="m" corresp="#s7:l5">lof</rhyme>.</l>
      </lg>
    </lg>
  </text>
