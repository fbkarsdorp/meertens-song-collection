  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Des Konings vanen sietmen <rhyme label="a" type="m">daer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Des cruyts geheymnus schijnt heel <rhyme label="a" type="m" corresp="#s1:l1">claer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Daer door des vleisch een schepper <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Aent hout met sijn vleisch hangen <rhyme label="b" type="m" corresp="#s1:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daer aen oock is verwondet <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Sijn sijdt met eener scherper <rhyme label="a" type="m" corresp="#s2:l1">speer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die miltlijck gaf water en <rhyme label="b" type="m">bloet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Te dempen onser sonden <rhyme label="b" type="m" corresp="#s2:l3">vloet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat David sanck is daer <rhyme label="a" type="m">volbracht</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Met lofsangen seer hooch <rhyme label="a" type="m" corresp="#s3:l1">geacht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Tot die menschen singhende <rhyme label="b" type="m">wal</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">God van het hout regeren <rhyme label="b" type="m" corresp="#s3:l3">sal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dit loflick hout vercieret <rhyme label="a" type="m">steet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Met des Konings purpuren <rhyme label="a" type="m" corresp="#s4:l1">kleedt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Als eenen wtvercoren <rhyme label="b" type="m">stam</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die dees litmaten aen sich <rhyme label="b" type="m" corresp="#s4:l3">nam</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Daer aen oock fast genagelt <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Des werelts Erloser <rhyme label="a" type="m" corresp="#s5:l1">gewis</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Der sonden last hy op sich <rhyme label="b" type="m">nam</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Der hellen roof hy oock <rhyme label="b" type="m" corresp="#s5:l3">bequam</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O cruys gegroet met allen <rhyme label="a" type="m">vlyt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">In deses Passi weerden <rhyme label="a" type="m" corresp="#s6:l1">tijt</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">In desen freudenrijcke <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Den vromen meer <rhyme label="b" type="m" corresp="#s6:l3">gerechticheyt</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die sondaers schenckt <rhyme label="a" type="m">bermherticheyt</rhyme>.</l>
        <l id="s7:l2" met="4" type="-+">V loven wy in <rhyme label="a" type="m" corresp="#s7:l1">eewigheyt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die ons door â€™t Cruys geheimnus <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Verlost van den eewigen <rhyme label="b" type="m" corresp="#s7:l3">doodt</rhyme>.</l>
      </lg>
    </lg>
  </text>
