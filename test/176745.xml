  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wy gheloven al met <rhyme label="a" type="m">eendracht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">In Godt de Vader vol <rhyme label="a" type="m" corresp="#s1:l1">almacht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die Hemel, Aerd, en al wat <rhyme label="b" type="m">leeft</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Gheschapen, en ghemaket <rhyme label="b" type="m" corresp="#s1:l3">heeft</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Endein Iesum Christum <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Sijnen Soon, onsen Heere <rhyme label="a" type="m" corresp="#s2:l1">vroet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die van den Heyl’ghen Gheest, <rhyme label="b" type="m">ghewis</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Sonder smetten ontfanghen <rhyme label="b" type="m" corresp="#s2:l3">is</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In Maria de Maghet <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En door Gods kracht, seer <rhyme label="a" type="m" corresp="#s3:l1">wonderbaer</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soo de Heylighe Gheest <rhyme label="b" type="m">verklaert</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Een Sone Gods van haer <rhyme label="b" type="m" corresp="#s3:l3">ghebaert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die heeft voor onse zonden <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Gheleden in dit aerdsche <rhyme label="a" type="m" corresp="#s4:l1">dal</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Is ghekuyst en ghestorven <rhyme label="b" type="m">so</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Onder Pontio <rhyme label="b" type="m" corresp="#s4:l3">Pilato</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En begraven is sijn <rhyme label="a" type="m">Lichaem</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Hy is ghedaelt soo wy <rhyme label="a" type="m" corresp="#s5:l1">verstaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ter Hellen neder, t’onser <rhyme label="b" type="m">baet</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Onsen Trooster en <rhyme label="b" type="m" corresp="#s5:l3">Advocaet</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ten derden Daghe soo is <rhyme label="a" type="m">hy</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Van der Doodt op-ghestanden <rhyme label="a" type="m" corresp="#s6:l1">vry</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Uyt den Grave, verresen <rhyme label="b" type="m">klaer</rhyme></l>
        <l id="s6:l4" met="4" type="-+">En verwan ons Vyanden <rhyme label="b" type="m" corresp="#s6:l3">swaer</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ten Hemel hoogh in Godes <rhyme label="a" type="m">Throon</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Is hy op-gheklommen <rhyme label="a" type="m" corresp="#s7:l1">ydoon</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En sit nu daer seer <rhyme label="b" type="m">Triumphant</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Aen Godt des Vaders <rhyme label="b" type="m" corresp="#s7:l3">Rechterhant</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Van daer hy weder komen <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Om te rechten ons menschen <rhyme label="a" type="m" corresp="#s8:l1">al</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En recht te Oordelen <rhyme label="b" type="m">bequaem</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Den levende en doode <rhyme label="b" type="m" corresp="#s8:l3">t’saem</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wy ghelooven oock minst en <rhyme label="a" type="m">meest</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Van herten in den Heyl’ghen <rhyme label="a" type="m" corresp="#s9:l1">Gheest</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En wy belijden hier in ‘t <rhyme label="b" type="m">perck</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Een alghemeyne Christen <rhyme label="b" type="m" corresp="#s9:l3">Kerck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghemeynschap, der Heylighen <rhyme label="a" type="m">mee</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Oock der zonden <rhyme label="a" type="m" corresp="#s10:l1">verghevinghe</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En onses vleeschs <rhyme label="b" type="m">verrijsenis</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Een eeuwigh leven, seer <rhyme label="b" type="m" corresp="#s10:l3">ghewis</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dit is onsen Gheloove <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">‘t Welck wy belijden groot en <rhyme label="a" type="m" corresp="#s11:l1">kleyn</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En wat ons Godes Woort meer <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Wert van ons ghelooft en <rhyme label="b" type="m" corresp="#s11:l3">ghe-eert</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Wy bidden dy, Godt Vader <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Ons toch voor valsche leer <rhyme label="a" type="m" corresp="#s12:l1">behoet</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">In dijne waerheyt leyt ons <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Daer toe wy segghen Amen <rhyme label="b" type="m" corresp="#s12:l3">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
