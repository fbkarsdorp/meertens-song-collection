  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Geeft my Heer om te <rhyme label="a" type="f">verhoeghen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Rechte wijsheyt en <rhyme label="b" type="m">verstandt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat ick my altijdt mach <rhyme label="a" type="f" corresp="#s1:l1">voeghen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Onder u crachtighe <rhyme label="b" type="m" corresp="#s1:l2">handt</rhyme>,</l>
        <l id="s1:l5" met="6" type="+-">T’is u Goddelijcke machte // niemandt <rhyme label="c" type="m">can</rhyme></l>
        <l id="s1:l6" met="6" type="+-">Dese tegen staen met crachte // wijf noch <rhyme label="c" type="m" corresp="#s1:l5">man</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">En ist Heer niet u handt <rhyme label="a" type="f">goedich</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Waer door dat ghy hebt <rhyme label="b" type="m">ghemaeckt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Gheschapen al dinghen <rhyme label="a" type="f" corresp="#s2:l1">spoedich</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Wt niet? t’en dient niet <rhyme label="b" type="m" corresp="#s2:l2">versaeckt</rhyme>:</l>
        <l id="s2:l5" met="6" type="+-">Daer door schept ooc in my pure, na u <rhyme label="c" type="m">woort</rhyme></l>
        <l id="s2:l6" met="6" type="+-">Heel een nieuwe creature // soo’t <rhyme label="c" type="m" corresp="#s2:l5">behoort</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In dees macht streckt ghy u <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En werpt Heer met grooter <rhyme label="b" type="m">macht</rhyme></l>
        <l id="s3:l3" met="4" type="+-">In de Helle te <rhyme label="a" type="f" corresp="#s3:l1">verbranden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Naermaels het verkeert <rhyme label="b" type="m" corresp="#s3:l2">gheslacht</rhyme>:</l>
        <l id="s3:l5" met="6" type="+-">Verwerpt my tot geenen tijden // in die <rhyme label="c" type="m">gloet</rhyme></l>
        <l id="s3:l6" met="6" type="+-">Met den Satan in het lijden // deur <rhyme label="c" type="m" corresp="#s3:l5">hooghmoet</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Sterck is noch u hant, o <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Om te straffen even <rhyme label="b" type="m">fel</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Die haer nu verheffen <rhyme label="a" type="f" corresp="#s4:l1">seere</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Haer te werpen in de <rhyme label="b" type="m" corresp="#s4:l2">hel</rhyme>,</l>
        <l id="s4:l5" met="6" type="+-">Laet my daer met niet beswaren // in mijn <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s4:l6" met="6" type="+-">Maer wilt mijn sinnen bewaren // tot der <rhyme label="c" type="m" corresp="#s4:l5">deucht</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Kenlijck Heer door uwe <rhyme label="a" type="f">handen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Soo hebt ghy my <rhyme label="b" type="m">toebereyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Daer in houden hare <rhyme label="a" type="f" corresp="#s5:l1">standen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Als des Weerelts eynden <rhyme label="b" type="m" corresp="#s5:l2">breyt</rhyme>,</l>
        <l id="s5:l5" met="6" type="+-">Ghy nu alle creatueren // daer in <rhyme label="c" type="m">houdt</rhyme>,</l>
        <l id="s5:l6" met="6" type="+-">Doetse wijslijc gouvernueren // <rhyme label="c" type="m" corresp="#s5:l5">menichfout</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Even soo men doet <rhyme label="a" type="f">regieren</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Een schip, door des Schippers <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Soo can, Heer, u handt ons <rhyme label="a" type="f" corresp="#s6:l1">sieren</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Door u cracht, hoe dat het <rhyme label="b" type="m" corresp="#s6:l2">gaet</rhyme>,</l>
        <l id="s6:l5" met="6" type="+-">Hier in des weerelts ellenden // t’wildt <rhyme label="c" type="m">foreest</rhyme>,</l>
        <l id="s6:l6" met="6" type="+-">Stiert ons door uwen bekenden // heyligen <rhyme label="c" type="m" corresp="#s6:l5">Geest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">In u lieflijcke <rhyme label="a" type="f">weyden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Leyde ons u handt <rhyme label="b" type="m">bequaem</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Recht my met <rhyme label="a" type="f" corresp="#s7:l1">barmherticheyden</rhyme></l>
        <l id="s7:l4" met="4" type="+-">O lief Heer om uwen <rhyme label="b" type="m" corresp="#s7:l2">naem</rhyme>,</l>
        <l id="s7:l5" met="6" type="+-">Toont u machte doch in desen // Heere <rhyme label="c" type="m">sterck</rhyme>,</l>
        <l id="s7:l6" met="6" type="+-">Recht doch my in uwer vresen // u <rhyme label="c" type="m" corresp="#s7:l5">hantwerck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Alsoo wilt my oock <rhyme label="a" type="f">behoeden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">En my voorgaen alle <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Deur u macht wilt Heere <rhyme label="a" type="f" corresp="#s8:l1">spoeden</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Als die mijn berader <rhyme label="b" type="m" corresp="#s8:l2">zijt</rhyme>,</l>
        <l id="s8:l5" met="6" type="+-">Die my seer wel can beraden // hooch <rhyme label="c" type="m">geacht</rhyme>,</l>
        <l id="s8:l6" met="6" type="+-">Onderhouden met genaden // deur u <rhyme label="c" type="m" corresp="#s8:l5">cracht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Comt met uwer handt <rhyme label="a" type="f">goetdadich</rhyme></l>
        <l id="s9:l2" met="4" type="+-">O ghy sterck-machtighe <rhyme label="b" type="m">heldt</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Weest mijn ziel en lijf <rhyme label="a" type="f" corresp="#s9:l1">beradich</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">T’is in u handen <rhyme label="b" type="m" corresp="#s9:l2">ghestelt</rhyme>:</l>
        <l id="s9:l5" met="6" type="+-">Wie sou my doch mogen deeren // in den <rhyme label="c" type="m">strijt</rhyme>,</l>
        <l id="s9:l6" met="6" type="+-">Als ghy stercke Heer der heeren // by my <rhyme label="c" type="m" corresp="#s9:l5">zijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Onder uwe handt seer <rhyme label="a" type="f">crachtich</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Wil ick my booghen <rhyme label="b" type="m">subijt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Heere maeckt my daer toe <rhyme label="a" type="f" corresp="#s10:l1">machtich</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Soo sal ick dan seer <rhyme label="b" type="m" corresp="#s10:l2">verblijt</rhyme></l>
        <l id="s10:l5" met="6" type="+-">V hoogh loven ende prijsen // t’leven <rhyme label="c" type="m">lanck</rhyme>,</l>
        <l id="s10:l6" met="6" type="+-">En u dancklijck eer bewijsen // met <rhyme label="c" type="m" corresp="#s10:l5">gesanck</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Boocht mijn schouderen tot <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Willich in mijn jonghe <rhyme label="b" type="m">jeucht</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Wilt my doch ghenadich <rhyme label="a" type="f" corresp="#s11:l1">wesen</rhyme></l>
        <l id="s11:l4" met="4" type="+-">In u cracht te zijn <rhyme label="b" type="m" corresp="#s11:l2">verheucht</rhyme>,</l>
        <l id="s11:l5" met="6" type="+-">En my daer op mach verlaten // even <rhyme label="c" type="m">stijf</rhyme>,</l>
        <l id="s11:l6" met="6" type="+-">Comt my lief Heere te baren // int <rhyme label="c" type="m" corresp="#s11:l5">bedrijf</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Soo wil ick dit Liedt <rhyme label="a" type="f">besluyten</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Verhoort Heer dit mijn <rhyme label="b" type="m">ghebet</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Een spruyt die begint te <rhyme label="a" type="f" corresp="#s12:l1">spruyten</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Ben ick, my doch recht <rhyme label="b" type="m" corresp="#s12:l2">verset</rhyme></l>
        <l id="s12:l5" met="6" type="+-">In uwen lof om te draghen // vruchten <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s12:l6" met="6" type="+-">Nae u Goddelijck behaghen // lieflijck <rhyme label="c" type="m" corresp="#s12:l5">soet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
