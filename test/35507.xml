  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Waer is’er Kercke sonder <rhyme label="a" type="m">sanck</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Of Kermis sonder keel <rhyme label="a" type="m" corresp="#s1:l1">gheklanck</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Waer is’er mensch die vreughdigh <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En somtijdts niet een liet en <rhyme label="b" type="m" corresp="#s1:l3">heeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wanneer de vreught den mensche <rhyme label="a" type="m">dwinckt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Men hoort strakcx dat de keele <rhyme label="a" type="m" corresp="#s2:l1">klinckt</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Den sanck is teecken van de <rhyme label="b" type="m">vreught</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En is oock Moeder van veel <rhyme label="b" type="m" corresp="#s2:l3">deught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Singht nu dan eens een gheestigh <rhyme label="a" type="m">liet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En sorght van daegh voor morghen <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Die kleene sorghe maecken <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die leven, maer ergher als <rhyme label="b" type="m" corresp="#s3:l3">doodt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een treurigh mensch is vol <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Een treurigh mensch en deught dogh <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Wat is het dat den treurder <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als te verteeren vleesch en <rhyme label="b" type="m" corresp="#s4:l3">bloedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Looft Godt, en doet u werck <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En met een liedt <rhyme label="a" type="m" corresp="#s5:l1">ghebenedijdt</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Den Heer, die ’t al beschicken <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En al naer sijnen wille <rhyme label="b" type="m" corresp="#s5:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wel menschen hebdy wel <rhyme label="a" type="m">ghesien</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat naer u schicken sal <rhyme label="a" type="m" corresp="#s6:l1">gheschien</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">Dus looft den Heer met sanck en <rhyme label="b" type="m">spel</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Zyt vreughdigh, en doet altydt <rhyme label="b" type="m" corresp="#s6:l3">wel</rhyme>.</l>
      </lg>
    </lg>
  </text>
