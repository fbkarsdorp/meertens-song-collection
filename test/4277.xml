<song>
  <meta>
    <id>4277</id>
    <date>
      <year-start>1602</year-start>
      <year-end>1602</year-end>
    </date>
    <tags>
      <tag standard-name="liefdeslied" translation="love song">liefdeslied</tag>
      <tag standard-name="afscheidslied" translation="farewell song">afscheidslied</tag>
      <tag standard-name="acrostichon" translation="acrostic song">acrostichon</tag>
    </tags>
    <melody>Prieel zoetgeurig balsemvat</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="love and sex">liefde en seks</category>
      <category translation="occasions">gelegenheden</category>
    </categories>
  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="1" type="-+">PRi- <rhyme label="a" type="m">eel</rhyme> //</l>
        <l id="s1:l2" met="3" type="-+">Soetgeurich balsem <rhyme label="b" type="m">vat</rhyme> //</l>
        <l id="s1:l3" met="2" type="-+">Reyn maeghden Blom- <rhyme label="c" type="f">me</rhyme> //</l>
        <l id="s1:l4" met="2" type="-+">Ghy weet <rhyme label="c" type="f" corresp="#s1:l3">waeromme</rhyme> //</l>
        <l id="s1:l5" met="5" type="+-">Dat ick u int hert hebbe verhe- <rhyme label="d" type="f">ven</rhyme>:</l>
        <l id="s1:l6" met="1" type="-+">Ge- <rhyme label="a" type="m" corresp="#s1:l1">heel</rhyme> //</l>
        <l id="s1:l7" met="3" type="-+">Sijt ghy den weertsten <rhyme label="b" type="m" corresp="#s1:l2">schat</rhyme> //</l>
        <l id="s1:l8" met="2" type="-+">Gulden hooft-som- <rhyme label="c" type="f" corresp="#s1:l3">me</rhyme> //</l>
        <l id="s1:l9" met="2" type="-+">Dies ick u <rhyme label="c" type="f" corresp="#s1:l3">nomme</rhyme> //</l>
        <l id="s1:l10" met="5" type="+-">Mijnen troost boven alle die le- <rhyme label="d" type="f" corresp="#s1:l5">ven</rhyme>:</l>
        <l id="s1:l11" met="5" type="+-">Op aerden en is soo soet geen <rhyme label="e" type="m">iuweel</rhyme> //</l>
        <l id="s1:l12" met="3" type="-+">Ghy zijt mijn lot mijn <rhyme label="e" type="m" corresp="#s1:l11">deel</rhyme> //</l>
        <l id="s1:l13" met="2" type="-+">Van God <rhyme label="d" type="f" corresp="#s1:l5">gegeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="1" type="-+">Int <rhyme label="a" type="m">grief</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Lach ick (eylaes) <rhyme label="b" type="m">gewont</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Die my <rhyme label="c" type="f">benijden</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">
          <rhyme label="c" type="f" corresp="#s2:l3">Vermaledijden</rhyme>
        </l>
        <l id="s2:l5" met="5" type="+-">My, om dat ick u hadde <rhyme label="d" type="f">vercoren</rhyme>:</l>
        <l id="s2:l6" met="1" type="-+">Den <rhyme label="a" type="m" corresp="#s2:l1">brief</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Daer t'woort van troost in <rhyme label="b" type="m" corresp="#s2:l2">stont</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Quam my <rhyme label="c" type="f" corresp="#s2:l3">verblijden</rhyme>:</l>
        <l id="s2:l9" met="2" type="-+">Wt <rhyme label="c" type="f" corresp="#s2:l3">medelijden</rhyme></l>
        <l id="s2:l10" met="5" type="+-">Hebdy my dijn trouwe vast <rhyme label="d" type="f" corresp="#s2:l5">gesworen</rhyme>:</l>
        <l id="s2:l11" met="5" type="+-">V goet grondich herte soet, my <rhyme label="e" type="m">verhief</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Ter weerelt was noyt <rhyme label="e" type="m" corresp="#s2:l11">lief</rhyme></l>
        <l id="s2:l13" met="2" type="-+">Liever <rhyme label="d" type="f" corresp="#s2:l5">geboren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="1" type="-+">
          <rhyme label="a" type="m">Eerbaer</rhyme>
        </l>
        <l id="s3:l2" met="3" type="-+">Acht u een yder // <rhyme label="b" type="m">meest</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Ghy zijt in <rhyme label="c" type="f">desen</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Geeert, <rhyme label="c" type="f" corresp="#s3:l3">gepresen</rhyme>,</l>
        <l id="s3:l5" met="5" type="+-">Want ghy wederstaet der nijders <rhyme label="d" type="f">perte</rhyme>:</l>
        <l id="s3:l6" met="1" type="-+">Int <rhyme label="a" type="m" corresp="#s3:l1">iaer</rhyme></l>
        <l id="s3:l7" met="3" type="-+">En leeft geen blijder // <rhyme label="b" type="m" corresp="#s3:l2">geest</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Dan ick mach <rhyme label="c" type="f" corresp="#s3:l3">wesen</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Ick bens <rhyme label="c" type="f" corresp="#s3:l3">genesen</rhyme>,</l>
        <l id="s3:l10" met="5" type="+-">Al was ick getreft met menich <rhyme label="d" type="f" corresp="#s3:l5">smerte</rhyme>,</l>
        <l id="s3:l11" met="5" type="+-">Liefste! ghy zijt my een soet <rhyme label="e" type="m">wederpaer</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Want ghy tooght my <rhyme label="e" type="m" corresp="#s3:l11">voorwaer</rhyme>,</l>
        <l id="s3:l13" met="2" type="-+">Een getrouw <rhyme label="d" type="f" corresp="#s3:l5">herte</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="1" type="-+">Tis <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Met my dus vroom <rhyme label="b" type="m">gestelt</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Dat ick deur <rhyme label="c" type="f">pijne</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Geensins <rhyme label="c" type="f" corresp="#s4:l3">verdwijne</rhyme>,</l>
        <l id="s4:l5" met="5" type="+-">Want wy zijn vereent, met siel, en <rhyme label="d" type="f">lijve</rhyme>,</l>
        <l id="s4:l6" met="1" type="-+">Wie <rhyme label="a" type="m" corresp="#s4:l1">can</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Ons scheyden, met <rhyme label="b" type="m" corresp="#s4:l2">gewelt</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Dan God, ten <rhyme label="c" type="f" corresp="#s4:l3">fijne</rhyme>:</l>
        <l id="s4:l9" met="2" type="-+">Lief ghy zijt <rhyme label="c" type="f" corresp="#s4:l3">mijne</rhyme>,</l>
        <l id="s4:l10" met="5" type="+-">Dies ick my u eygen oock <rhyme label="d" type="f" corresp="#s4:l5">toeschrijue</rhyme>,</l>
        <l id="s4:l11" met="5" type="+-">Met u, sal ick suer en soet, nemen <rhyme label="e" type="m">an</rhyme></l>
        <l id="s4:l12" met="3" type="-+">Gelijck een eerbaer <rhyme label="e" type="m" corresp="#s4:l11">man</rhyme></l>
        <l id="s4:l13" met="2" type="-+">Met zijnen <rhyme label="d" type="f" corresp="#s4:l5">wijve</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="1" type="-+">En <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Niet aen s' volcx clappen <rhyme label="b" type="m">wreet</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Want ghy <rhyme label="c" type="f">alleene</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">En anders <rhyme label="c" type="f" corresp="#s5:l3">geene</rhyme>,</l>
        <l id="s5:l5" met="5" type="+-">Zijt mijn troost, waer ick my henen <rhyme label="d" type="f">wende</rhyme>,</l>
        <l id="s5:l6" met="1" type="-+"><rhyme label="a" type="m" corresp="#s5:l1">Verdriet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Welvaert, of herten <rhyme label="b" type="m" corresp="#s5:l2">leet</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Wert ons <rhyme label="c" type="f" corresp="#s5:l3">gemeene</rhyme>,</l>
        <l id="s5:l9" met="2" type="-+">Voorwaer ick <rhyme label="c" type="f" corresp="#s5:l3">weene</rhyme></l>
        <l id="s5:l10" met="5" type="+-">Als u t'hert vervult is met <rhyme label="d" type="f" corresp="#s5:l5">ellende</rhyme>:</l>
        <l id="s5:l11" met="5" type="+-">Maer, als my dijn lachen soet, eens <rhyme label="e" type="m">geschiet</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Is al mijn treuren <rhyme label="e" type="m" corresp="#s5:l11">niet</rhyme></l>
        <l id="s5:l13" met="2" type="-+">Dan vreught int <rhyme label="d" type="f" corresp="#s5:l5">ende</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="1" type="-+">Reyn <rhyme label="a" type="m">dier</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Princesse edel <rhyme label="b" type="m">saet</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">De <rhyme label="c" type="f">principale</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Die <rhyme label="c" type="f" corresp="#s6:l3">teenemale</rhyme></l>
        <l id="s6:l5" met="5" type="+-">Mijnen dienst ontfanght, sonder <rhyme label="d" type="f">beschamen</rhyme>:</l>
        <l id="s6:l6" met="1" type="-+">Neemt <rhyme label="a" type="m" corresp="#s6:l1">hier</rhyme></l>
        <l id="s6:l7" met="3" type="-+">In danck, mijn simpel <rhyme label="b" type="m" corresp="#s6:l2">daet</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Deur dijn <rhyme label="c" type="f" corresp="#s6:l3">reale</rhyme></l>
        <l id="s6:l9" met="2" type="-+">Vloyende <rhyme label="c" type="f" corresp="#s6:l3">tale</rhyme>,</l>
        <l id="s6:l10" met="5" type="+-">Heb ick dit gestelt, naer cleen <rhyme label="d" type="f" corresp="#s6:l5">betamen</rhyme>:</l>
        <l id="s6:l11" met="5" type="+-">Oorlof neem ick met een soet, cussen <rhyme label="e" type="m">fier</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">Gedinct uwen <rhyme label="e" type="m" corresp="#s6:l11">Princier</rhyme></l>
        <l id="s6:l13" met="2" type="-+">Tot wy <rhyme label="d" type="f" corresp="#s6:l5">versamen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
