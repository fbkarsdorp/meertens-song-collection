    <tags/>
    <melody>Nerea schoonste van uw geburen</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoort toe menschen die zijt <rhyme label="a" type="f">beladen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Met sonden veel groot ende <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Set u vertrouwen vroegh en <rhyme label="a" type="f" corresp="#s1:l1">spade</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Op uwen Godt en Heer <rhyme label="b" type="m" corresp="#s1:l2">eerbaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wilt ’t Harnas aen u leden <rhyme label="a" type="f">setten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Neemt schilt en swaert al in u <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Het selve oock wel scherp <rhyme label="a" type="f" corresp="#s2:l1">wetten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hout u dan fris ende <rhyme label="b" type="m" corresp="#s2:l2">constant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want den Satan vol <rhyme label="a" type="f">boosheden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Gaet om gelijck een Leeuwe <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soeckt soo onse arme <rhyme label="a" type="f" corresp="#s3:l1">leden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Te brengen in een droef <rhyme label="b" type="m" corresp="#s3:l2">gequel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer wilt u van hem niet <rhyme label="a" type="f">vertsagen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Al schijnt hy vreesselijck van <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maer met u hert en mont <rhyme label="a" type="f" corresp="#s4:l1">verknagen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Soo sult gy wesen seer <rhyme label="b" type="m" corresp="#s4:l2">vermaert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Denckt eens hoe dat hy met <rhyme label="a" type="f">afgrijse</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Quam besoecken den Heer <rhyme label="b" type="m">subijt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En dat al op driederley <rhyme label="a" type="f" corresp="#s5:l1">wijse</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Met een alle soo fellen <rhyme label="b" type="m" corresp="#s5:l2">strijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Siet Christus hadde veele <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Gevast, wel veertigh in ’t <rhyme label="b" type="m">gemeyn</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">En hem hongerde met <rhyme label="a" type="f" corresp="#s6:l1">behagen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Doen quam den Satan tot hem <rhyme label="b" type="m" corresp="#s6:l2">treen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En sprack indien gy zijt Gods <rhyme label="a" type="f">Soone</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Soo seght dat dese steenen <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dat sy brooden worden <rhyme label="a" type="f" corresp="#s7:l1">schoone</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En het sal na u wille <rhyme label="b" type="m" corresp="#s7:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer Christus sprack al sonder <rhyme label="a" type="f">beven</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Den mensche die sal van nu <rhyme label="b" type="m">voortaen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Met den Broode alleen niet <rhyme label="a" type="f" corresp="#s8:l1">leven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Maer met woorden die uyt God <rhyme label="b" type="m" corresp="#s8:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Doe ginck de Satan Christus <rhyme label="a" type="f">leyden</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Na de Heylige Stadt <rhyme label="b" type="m">eerbaer</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En voort al sonder langh te <rhyme label="a" type="f" corresp="#s9:l1">beyden</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Op de Tinne des Tempels <rhyme label="b" type="m" corresp="#s9:l2">klaer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Sprack doen zijt gy Gods Soon <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Soo werpt u neer naer ’t <rhyme label="b" type="m">aertsche-dal</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Want daer staet klaerlijck <rhyme label="a" type="f" corresp="#s10:l1">geschreven</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Dat Gods Engelen bevelen <rhyme label="b" type="m" corresp="#s10:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Om u als dan soo te <rhyme label="a" type="f">bewaren</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dat gy u aen geen steen en <rhyme label="b" type="m">stoot</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Maer Christus ginck hem <rhyme label="a" type="f" corresp="#s11:l1">openbaren</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">En sprack met woorden klaer en <rhyme label="b" type="m" corresp="#s11:l2">bloot</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Daer staet geschreven <rhyme label="a" type="f">klaerlijcken</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Gy sult den Heer versoecken <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En al die beminnen sijn <rhyme label="a" type="f" corresp="#s12:l1">Rijcke</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Metter herten groote <rhyme label="b" type="m" corresp="#s12:l2">vlijt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Weder nam hem de Satan <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Op een seer hoogen Bergh <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Stelde hem voor veel <rhyme label="a" type="f" corresp="#s13:l1">heerlijckheden</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Om hem te brengen in ’t <rhyme label="b" type="m" corresp="#s13:l2">verdriet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hy sey wilt gy hier <rhyme label="a" type="f">nedervallen</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">En my aenbidden nu <rhyme label="b" type="m">terstont</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Soo sal ick u dan geven <rhyme label="a" type="f" corresp="#s14:l1">alle</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Wat gy siet voor u oogen <rhyme label="b" type="m" corresp="#s14:l2">ront</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Doe sprack Christus seer hoog van <rhyme label="a" type="f">waerde</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Gaet wegh gy Satan boos en <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Want in Hemel op der <rhyme label="a" type="f" corresp="#s15:l1">Aerde</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Men eenen Godt aenbidden <rhyme label="b" type="m" corresp="#s15:l2">sel</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Doe is de Satan wegh <rhyme label="a" type="f">geweecken</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">En Christus die verwon den <rhyme label="b" type="m">strijt</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">En Satans machten gaen <rhyme label="a" type="f" corresp="#s16:l1">verbreecken</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Waer door dat wy al zijn <rhyme label="b" type="m" corresp="#s16:l2">bevrijt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Oorlof menschen wilt hier op <rhyme label="a" type="f">dencken</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Strijt vroom met Christo en sijn <rhyme label="b" type="m">Woort</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Om Satans macht alsoo te <rhyme label="a" type="f" corresp="#s17:l1">krencken</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Dat hy van stonden aen moet <rhyme label="b" type="m" corresp="#s17:l2">voort</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
