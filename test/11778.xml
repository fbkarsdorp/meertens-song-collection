<song>
  <meta>
    <id>11778</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Psalm 031 Datheen</melody>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SChouwt aen, hoe 't lichaem leyt te <rhyme label="a" type="f">roncken</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Als in een diepe <rhyme label="b" type="m">droom</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Als in een stille <rhyme label="b" type="m" corresp="#s1:l2">stroom</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als eene die door Wijn <rhyme label="a" type="f" corresp="#s1:l1">beschoncken</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Als eene die sijn <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Den doodt schijnt <rhyme label="c" type="f" corresp="#s1:l5">overgeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick bid u siet niet op de <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die uyterlijck in <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als de doot bestorven <rhyme label="b" type="m" corresp="#s2:l2">zijn</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Maer hoe de ziele waeckt van <rhyme label="a" type="f" corresp="#s2:l1">binnen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En sweeft met snelle <rhyme label="c" type="f">vlercken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Na Godes <rhyme label="c" type="f" corresp="#s2:l5">wonder-wercken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het vleesch moet voor den Geest doch <rhyme label="a" type="f">swichten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">De wellust en 't <rhyme label="b" type="m">vermaeck</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Want dit 's een hooger <rhyme label="b" type="m" corresp="#s3:l2">saeck</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Maer Godt ontsteeckt in my sijn <rhyme label="a" type="f" corresp="#s3:l1">lichten</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Al schijnt het hert te <rhyme label="c" type="f">sluymen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">De duysterheydt moet <rhyme label="c" type="f" corresp="#s3:l5">ruymen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al schijnt mijn hert aen 't aerdsch te <rhyme label="a" type="f">hangen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Door 't  keurigh oogh <rhyme label="b" type="m">bevleckt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En van 't vleesch <rhyme label="b" type="m" corresp="#s4:l2">overdeckt</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Laet innerlijck doch zijn 't <rhyme label="a" type="f" corresp="#s4:l1">verlangen</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">In slapen en in <rhyme label="c" type="f">waecken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Na al veel hooger <rhyme label="c" type="f" corresp="#s4:l5">saecken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Na 't Hemels dat niet sal <rhyme label="a" type="f">verteeren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En daer noch roest noch <rhyme label="b" type="m">mat</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Kan krencken desen <rhyme label="b" type="m" corresp="#s5:l2">schat</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Maer dat ick in de vrees des <rhyme label="a" type="f" corresp="#s5:l1">Heeren</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Door sijnen Geest <rhyme label="c" type="f">gedreven</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">In eeuwigheydt mach <rhyme label="c" type="f" corresp="#s5:l5">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
