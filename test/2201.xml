  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">NAdien ik <rhyme label="a" type="m">Celestyn</rhyme>.</l>
        <l id="s1:l2" met="2" type="-+">Door bange <rhyme label="b" type="m">smart</rhyme></l>
        <l id="s1:l3" met="1" type="-+">In 't <rhyme label="b" type="m" corresp="#s1:l2">hart</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En gadeloose <rhyme label="a" type="m" corresp="#s1:l1">pijn</rhyme></l>
        <l id="s1:l5" met="3" type="-+">U heb so lang <rhyme label="c" type="m">gestreelt</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">En <rhyme label="d" type="m">gekoost</rhyme>,</l>
        <l id="s1:l7" met="2" type="+-">Dat gy <rhyme label="d" type="m" corresp="#s1:l6">bloost</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Blijft gy noch al <rhyme label="c" type="m" corresp="#s1:l5">vereelt</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Voor mijn bedroefde <rhyme label="a" type="m">staat</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Daar u <rhyme label="b" type="m">geweld</rhyme></l>
        <l id="s2:l3" met="1" type="-+">My <rhyme label="b" type="m" corresp="#s2:l2">stelt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Weet ik geen beeter <rhyme label="a" type="m" corresp="#s2:l1">raad</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Als dat gy my eens <rhyme label="c" type="m">kust</rhyme>;</l>
        <l id="s2:l6" met="2" type="+-">Al mijn <rhyme label="d" type="m">pijn</rhyme></l>
        <l id="s2:l7" met="2" type="+-">
          <rhyme label="d" type="m" corresp="#s2:l6">Celestyn</rhyme>
        </l>
        <l id="s2:l8" met="3" type="-+">Raakt door een kus in <rhyme label="c" type="m" corresp="#s2:l5">rust</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Of so gy niet en <rhyme label="a" type="m">wilt</rhyme></l>
        <l id="s3:l2" met="2" type="-+">My met een <rhyme label="b" type="m">soen</rhyme></l>
        <l id="s3:l3" met="1" type="-+">
          <rhyme label="b" type="m" corresp="#s3:l2">Voldoen</rhyme>
        </l>
        <l id="s3:l4" met="3" type="-+">So word mijn klacht <rhyme label="a" type="m" corresp="#s3:l1">verspilt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Noch kander iets <rhyme label="c" type="m">geschiÃªn</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">En dat <rhyme label="d" type="m">is</rhyme></l>
        <l id="s3:l7" met="2" type="+-">Dat ik <rhyme label="d" type="m" corresp="#s3:l6">wis</rhyme></l>
        <l id="s3:l8" met="3" type="-+">U mag gestadig <rhyme label="c" type="m" corresp="#s3:l5">sien</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Verkies nu vry 't is <rhyme label="a" type="m">tijd</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">So gy my <rhyme label="b" type="m">kust</rhyme>,</l>
        <l id="s4:l3" met="1" type="-+">En <rhyme label="b" type="m" corresp="#s4:l2">blust</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">So raakt gy my heel <rhyme label="a" type="m" corresp="#s4:l1">quijt</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Kus gy my niet, so <rhyme label="c" type="m">sal</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Ik <rhyme label="d" type="m">bespien</rhyme>,</l>
        <l id="s4:l7" met="2" type="+-">En u <rhyme label="d" type="m" corresp="#s4:l6">sien</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Altijd en <rhyme label="c" type="m" corresp="#s4:l5">overal</rhyme>.</l>
      </lg>
    </lg>
