      <category translation="cycle of life">levenscyclus</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe saligh is het <rhyme label="a" type="f">paren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die, met haer Ouders <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">In Gods-vrught t'saem <rhyme label="a" type="f" corresp="#s1:l1">vergaren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En verre sijn van 't <rhyme label="b" type="m" corresp="#s1:l2">quaet</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Wie sal niet moeten <rhyme label="c" type="f">prijsen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En oock veel eer <rhyme label="c" type="f" corresp="#s1:l5">bewijsen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Desen Heyligen <rhyme label="b" type="m" corresp="#s1:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghy die in uwe <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Een goeden Echt wilt <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Gaet u voor eerst <rhyme label="a" type="f" corresp="#s2:l1">begeven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In 't buygen van u <rhyme label="b" type="m" corresp="#s2:l2">knien</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En soeckt van God den <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Te krijgen u <rhyme label="c" type="f" corresp="#s2:l5">begeere</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Het sal u wel <rhyme label="b" type="m" corresp="#s2:l2">geschien</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Soeckt u oock te <rhyme label="a" type="f">beraden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met uwe Ouders <rhyme label="b" type="m">vroet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Het sal u nimmer <rhyme label="a" type="f" corresp="#s3:l1">schaden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Maer doen op 't hooghste <rhyme label="b" type="m" corresp="#s3:l2">goet</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Dat sultghe sijn <rhyme label="c" type="f">gesegent</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En over al <rhyme label="c" type="f" corresp="#s3:l5">bejegent</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Met salige <rhyme label="b" type="m" corresp="#s3:l2">voorspoet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Tobias laet u <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met Sara, een <rhyme label="b" type="m">voorbeelt</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Die sijn hier in <rhyme label="a" type="f" corresp="#s4:l1">gepresen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En veel heyl meed' <rhyme label="b" type="m" corresp="#s4:l2">gedeelt</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">God heeft haer t'saem <rhyme label="c" type="f">gegeven</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Eenen gerustigh <rhyme label="c" type="f" corresp="#s4:l5">leven</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Vol eerelijcke <rhyme label="b" type="m" corresp="#s4:l2">weeld'</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De weeld' was boven 't <rhyme label="a" type="f">menschelijck</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En vol van Godes <rhyme label="b" type="m">vrucht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">By yeder een wel <rhyme label="a" type="f" corresp="#s5:l1">wenschelijck</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Verciert met goet <rhyme label="b" type="m" corresp="#s5:l2">gerucht</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Sy hebben hare <rhyme label="c" type="f">dagen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Na 's Heeren <rhyme label="c" type="f" corresp="#s5:l5">wel-behagen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Besteet in reyne <rhyme label="b" type="m" corresp="#s5:l2">sucht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wie soo d'Echt gaet <rhyme label="a" type="f">beginnen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die doet een goet <rhyme label="b" type="m">in-tree</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die sal de haven <rhyme label="a" type="f" corresp="#s6:l1">winnen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Van eenen goeden <rhyme label="b" type="m" corresp="#s6:l2">ree</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Godt sal hem stadigh <rhyme label="c" type="f">leyden</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En zijnen wegh <rhyme label="c" type="f" corresp="#s6:l5">bereyden</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Na de eeuwighe <rhyme label="b" type="m" corresp="#s6:l2">Vree</rhyme>.</l>
      </lg>
    </lg>
  </text>
