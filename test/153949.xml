    <melody>Als ik uit wandelen ga</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt Bloemtje dat <rhyme label="a" type="m">opschiet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">By Doornen, en <rhyme label="b" type="m">On-kruydt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat staet seer veel <rhyme label="a" type="m" corresp="#s1:l1">verdriet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En harde nepen <rhyme label="b" type="m" corresp="#s1:l2">uyt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">En soo 't onnoosel <rhyme label="c" type="m">Lam</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Gingh by een felle <rhyme label="d" type="m">Beer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Het quam, het quam, het <rhyme label="c" type="m" corresp="#s1:l5">quam</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Van sijnen Reys niet <rhyme label="d" type="m" corresp="#s1:l6">weer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soo 't Duyfje hem niet <rhyme label="a" type="m">wacht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met Arents om te <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Komt het licht sonder <rhyme label="a" type="m" corresp="#s2:l1">vacht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met bloedt besprenckelt, <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">En soo sal een kindt <rhyme label="c" type="m">Godts</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Oock varen, by die <rhyme label="d" type="m">gheen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Die trots, die trots, die <rhyme label="c" type="m" corresp="#s2:l5">trots</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En dartel sijn met <rhyme label="d" type="m" corresp="#s2:l6">een</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Als yemandt wordt <rhyme label="a" type="m">gheleydt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Op den Godloosen <rhyme label="b" type="m">baen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo moet <rhyme label="a" type="m" corresp="#s3:l1">d'onnooselheydt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Een pand daer laten <rhyme label="b" type="m" corresp="#s3:l2">staen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En soo men weder <rhyme label="c" type="m">gaet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Te halen dat <rhyme label="d" type="m">Juweel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Soo laet, soo laet, soo <rhyme label="c" type="m" corresp="#s3:l5">laet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Men daer noch eens soo <rhyme label="d" type="m" corresp="#s3:l6">veel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
