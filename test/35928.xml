  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHy die daer altijdt <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Na d’ijdelheyt des werelts <rhyme label="b" type="f">ongestadig</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Gy die daer bout op sant-gront <rhyme label="b" type="f" corresp="#s1:l2">onberadig</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van eygen liefde <rhyme label="a" type="m" corresp="#s1:l1">quaet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Meynt ghy te zijn <rhyme label="a" type="m">al-tijt</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Gerust in voorspoet op die wanckel <rhyme label="b" type="f">aerde</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">En dat die door die noyt iemant en <rhyme label="b" type="f" corresp="#s2:l2">spaerde</rhyme></l>
        <l id="s2:l4" met="3" type="-+">V soo sal schelden <rhyme label="a" type="m" corresp="#s2:l1">quijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O ghy bedrieght u <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">‘Tis Godt, die ’t seyt, die doodt moet ghy <rhyme label="b" type="f">besuren</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Noch jaer, noch maendt, noch dach weet ghy noch <rhyme label="b" type="f" corresp="#s3:l2">ure</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Noch stond van uwen <rhyme label="a" type="m" corresp="#s3:l1">keer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">t’Leven ende den <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Wort ongelijckelijck voor al <rhyme label="b" type="f">ghesponnen</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Maer wat verdriet, het is nauwe <rhyme label="b" type="f" corresp="#s4:l2">begonnen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Treckt af sonder <rhyme label="a" type="m" corresp="#s4:l1">respijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die doodt vlieght rondom <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">O Godt om mijn jonc herte te <rhyme label="b" type="f">doorwonden</rhyme></l>
        <l id="s5:l3" met="5" type="-+">Sy dreyght den pijl te schieten alle <rhyme label="b" type="f" corresp="#s5:l2">stonden</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Sonder hop’ van <rhyme label="a" type="m" corresp="#s5:l1">t’ontgaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O felle wreede <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">wilt gy soo haest u met mijn vlees <rhyme label="b" type="f">versaden</rhyme></l>
        <l id="s6:l3" met="5" type="-+">Mach ick my niet een oogenblick <rhyme label="b" type="f" corresp="#s6:l2">beraden</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">O doodt op uwen <rhyme label="a" type="m" corresp="#s6:l1">stoot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O onghenadich <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Onmenschelijcker als de wilde <rhyme label="b" type="f">dieren</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">Ic vreese u hant, en wilt soo haest niet <rhyme label="b" type="f" corresp="#s7:l2">stieren</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">V doodelijcke <rhyme label="a" type="m" corresp="#s7:l1">smert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Laes! ’t en baet klacht noch <rhyme label="a" type="m">sucht</rhyme>,</l>
        <l id="s8:l2" met="5" type="-+">Op u verderven heeft sy doch <rhyme label="b" type="f">ghesworen</rhyme>,</l>
        <l id="s8:l3" met="5" type="-+">Sy hout niet op, eer dat ghy hebt <rhyme label="b" type="f" corresp="#s8:l2">verloren</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En nae ’t graf neemt u <rhyme label="a" type="m" corresp="#s8:l1">vlucht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hoe? sal ’t dan moeten <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s9:l2" met="5" type="-+">dat ic sal spijsen met mijn vlees de <rhyme label="b" type="f">wormen</rhyme></l>
        <l id="s9:l3" met="5" type="-+">Laes! moet ’t zijn, dat sy my gaen <rhyme label="b" type="f" corresp="#s9:l2">bestormen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">En schenden mijn <rhyme label="a" type="m" corresp="#s9:l1">aenschijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">My schroomt voor sulck <rhyme label="a" type="m">ghedacht</rhyme>,</l>
        <l id="s10:l2" met="5" type="-+">Van schric en anxt mijn hayren al <rhyme label="b" type="f">opreysen</rhyme>,</l>
        <l id="s10:l3" met="5" type="-+">Gy vlees, gy weet van nu af mijn <rhyme label="b" type="f" corresp="#s10:l2">gepeysen</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Verfoeyt dan alle u <rhyme label="a" type="m" corresp="#s10:l1">pracht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Wat komt my nu te <rhyme label="a" type="m">baet</rhyme>,</l>
        <l id="s11:l2" met="5" type="-+">Goet, eer, ghelt, ende vleeschelijcke <rhyme label="b" type="f">lusten</rhyme>,</l>
        <l id="s11:l3" met="5" type="-+">o mensch hoe broos ist daer gy derft <rhyme label="b" type="f" corresp="#s11:l2">oprusten</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Alst al soo haest <rhyme label="a" type="m" corresp="#s11:l1">vergaet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">O vleesch, onnuttigh <rhyme label="a" type="m">vleesch</rhyme>,</l>
        <l id="s12:l2" met="5" type="-+">Ghy hebt my doen nae su soo lange <rhyme label="b" type="f">loopen</rhyme>,</l>
        <l id="s12:l3" met="5" type="-+">Maer nu eylaes! ick moet soo dier <rhyme label="b" type="f" corresp="#s12:l2">becoopen</rhyme>.</l>
        <l id="s12:l4" met="3" type="-+">O vleesch, onnuttigh <rhyme label="a" type="m" corresp="#s12:l1">vleesch</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Och nu wat batet <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s13:l2" met="5" type="-+">Dat ick tot uwen dienst my heb <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s13:l3" met="5" type="-+">die doot, den put, schenct gym y voor het <rhyme label="b" type="f" corresp="#s13:l2">leven</rhyme></l>
        <l id="s13:l4" met="3" type="-+">En ‘s hellen schrick daer <rhyme label="a" type="m" corresp="#s13:l1">by</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Adieu werelt, <rhyme label="a" type="m">adieu</rhyme>,</l>
        <l id="s14:l2" met="5" type="-+">V smeecken heft my al te seer <rhyme label="b" type="f">bedroghen</rhyme>,</l>
        <l id="s14:l3" met="5" type="-+">Wat ghy belooft, het is doch al <rhyme label="b" type="f" corresp="#s14:l2">gelogen</rhyme>.</l>
        <l id="s14:l4" met="3" type="-+">Adieu werelt, <rhyme label="a" type="m" corresp="#s14:l1">adieu</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
