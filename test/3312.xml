  <author>Zacharias Heyns</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VVy oude Christi <rhyme label="a" type="f">leden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Nu sijnd' in d'uitersten <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Doen t'uwaerts ons <rhyme label="a" type="f" corresp="#s1:l1">gebeden</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Ons hoop voorwaer is seer <rhyme label="b" type="m" corresp="#s1:l2">groot</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Benout schier totter <rhyme label="b" type="m" corresp="#s1:l2">doot</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Van goet, gelt, en middel heel <rhyme label="b" type="m" corresp="#s1:l2">bloot</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Toont u <rhyme label="a" type="f" corresp="#s1:l1">barmherticheden</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">En geeft ons het daech'licx <rhyme label="b" type="m" corresp="#s1:l2">broot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Denckt dat wy moeten <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Loon na wercken is het <rhyme label="b" type="m">ent</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">'tRijck Gods sullen sy <rhyme label="a" type="f" corresp="#s2:l1">erven</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die 'tmedogen sijn <rhyme label="b" type="m" corresp="#s2:l2">gewent</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Liefd' is doch <rhyme label="b" type="m" corresp="#s2:l2">'tfondament</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Daer door Gods rijck ons comt <rhyme label="b" type="m" corresp="#s2:l2">ontrent</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Laet ons doch troost <rhyme label="a" type="f" corresp="#s2:l1">verwerven</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Trou moet blijcken <rhyme label="b" type="m" corresp="#s2:l2">ongeschent</rhyme>.</l>
      </lg>
    </lg>
  </text>
