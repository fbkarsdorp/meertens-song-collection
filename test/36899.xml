  <author>Livinus van der Minnen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALsser eenen Soon gaet <rhyme label="a" type="f">trouwen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">En loopt met een Licht-mis <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Sonder dat eens voor te <rhyme label="a" type="f" corresp="#s1:l1">houwen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Aen syn' Ouders soo 't <rhyme label="b" type="m" corresp="#s1:l2">behoort</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Noch syn Moeder, noch syn <rhyme label="c" type="f">Vader</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Komen tot de Bruyloft <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En de Vrinden <rhyme label="c" type="f" corresp="#s1:l5">al-te-gader</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Laten hem in het <rhyme label="d" type="m" corresp="#s1:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Eenen Jongh-man die gaet <rhyme label="a" type="f">trouwen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Sonder dat hy Godt <rhyme label="b" type="m">aen-siet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Sal met Godt gheen Bruyloft <rhyme label="a" type="f" corresp="#s2:l1">houwen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Godt en komt te Bruyloft <rhyme label="b" type="m" corresp="#s2:l2">niet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Godt en sal hem niet <rhyme label="c" type="f">ver-eeren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Met syn' <rhyme label="d" type="m">teghenwoordigheydt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Noch syn Water doen <rhyme label="c" type="f" corresp="#s2:l5">verkeeren</rhyme></l>
        <l id="s2:l8" met="4" type="+-">In den Wyn die 't hert' <rhyme label="d" type="m" corresp="#s2:l6">verblydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Konnen die met blydtschap <rhyme label="a" type="f">trouwen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Die als Verckens minnen 't <rhyme label="b" type="m">slyck</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die Godt niet te vriendt en <rhyme label="a" type="f" corresp="#s3:l1">houwen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Den Autheur van 't <rhyme label="b" type="m" corresp="#s3:l2">Houwelyck</rhyme>?</l>
        <l id="s3:l5" met="4" type="+-">Wildy dan met eeren <rhyme label="c" type="f">trouwen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Met een reyn' en suyver' <rhyme label="d" type="m">Blom</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Laet de Ziel' eerst Bruyloft <rhyme label="c" type="f" corresp="#s3:l5">houwen</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Met des Hemels <rhyme label="d" type="m" corresp="#s3:l6">Bruydegom</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dan sal Jesus met syn <rhyme label="a" type="f">Moeder</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Komen tot uw' <rhyme label="b" type="m">Bruyloft-feest</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Godt sal wesen uwen <rhyme label="a" type="f" corresp="#s4:l1">voeder</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">En verheughen uwen <rhyme label="b" type="m" corresp="#s4:l2">gheest</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Dan suld' u in Godt <rhyme label="c" type="f">vermaken</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dan suldy recht vrolyck <rhyme label="d" type="m">zyn</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Dan suldy in liefde <rhyme label="c" type="f" corresp="#s4:l5">blaken</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Dan sal 't Water worden <rhyme label="d" type="m" corresp="#s4:l6">Wyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
