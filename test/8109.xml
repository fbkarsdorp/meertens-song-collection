    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ONtwaeckt ghy menschen over <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Siet wat u Christus gheven <rhyme label="a" type="m" corresp="#s1:l1">sal</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Rijst uyt denslaep der <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Op dat wy moghen groot en <rhyme label="a" type="m" corresp="#s1:l1">smal</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Vroom kampers zijn <rhyme label="b" type="f" corresp="#s1:l3">bevonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Bekeert u al uyt liefden <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En bidt altijdt met groot <rhyme label="a" type="m" corresp="#s2:l1">ootmoet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En wilt langhmoedigh <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hoort oock nae Christi woorden <rhyme label="a" type="m" corresp="#s2:l1">soet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Soo werdt u ziel <rhyme label="b" type="f" corresp="#s2:l3">ghenesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ghy zijt ons troost ons <rhyme label="a" type="m">toeverlaet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dus willen wy doen nae uwen <rhyme label="a" type="m" corresp="#s3:l1">raet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En ons van u niet <rhyme label="b" type="f">keeren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat wy niet bekennen te <rhyme label="a" type="m" corresp="#s3:l1">laet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ons dwaesheyt in 't <rhyme label="b" type="f" corresp="#s3:l3">verseeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy roept ons alle groot en <rhyme label="a" type="m">kleyn</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Comt tot 't levende water <rhyme label="a" type="m" corresp="#s4:l1">reyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om niet sal ick 't u <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ghy zijt versoent door my <rhyme label="a" type="m" corresp="#s4:l1">alleyn</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Waer voor soo wilt ghy <rhyme label="b" type="f" corresp="#s4:l3">beven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Van hem komt alle <rhyme label="a" type="m">saligheyt</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Hy is de wegh end' de <rhyme label="a" type="m" corresp="#s5:l1">waerheyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die daer leyt tot den <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Comt al tot my // soo Christus <rhyme label="a" type="m" corresp="#s5:l1">seyt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ghy werdt ontlast van <rhyme label="b" type="f" corresp="#s5:l3">sneven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Fondeert u al op Christi <rhyme label="a" type="m">woort</rhyme></l>
        <l id="s6:l2" met="4" type="-+">End' wandelt in sijn liefde <rhyme label="a" type="m" corresp="#s6:l1">voort</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En wilt daer niet <rhyme label="b" type="f">afscheyden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Houdt altijdt eendrachtigh <rhyme label="a" type="m" corresp="#s6:l1">accoort</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En laet u niet <rhyme label="b" type="f" corresp="#s6:l3">verleyden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy roept ons al tot een <rhyme label="a" type="m">lichaem</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Als kinders tot sijn dienst <rhyme label="a" type="m" corresp="#s7:l1">bequaem</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Soo Paulus schrijft <rhyme label="b" type="f">waerachtigh</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Tot den Ephesien vindtmen <rhyme label="a" type="m" corresp="#s7:l1">staen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Zijt dit alle <rhyme label="b" type="f" corresp="#s7:l3">gedachtigh</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Een Gheloof, een Doopsel een <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Wacht u wel van verkeerde <rhyme label="a" type="m" corresp="#s8:l1">leer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Alle die niet en <rhyme label="b" type="f">kommen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Met Christi woorden over <rhyme label="a" type="m" corresp="#s8:l1">een</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Want Godt salse <rhyme label="b" type="f" corresp="#s8:l3">verdommen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Men moetse schouwen als <rhyme label="a" type="m">fenijn</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Willen wy van Christi schapen <rhyme label="a" type="m" corresp="#s9:l1">zijn</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En hooren sijn stemme <rhyme label="b" type="f">krachtigh</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dus volcht hem na, verstaet wel <rhyme label="a" type="m" corresp="#s9:l1">mijn</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Sijn weghen zijn <rhyme label="b" type="f" corresp="#s9:l3">waerachtigh</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Sijn jock is soet, sijn last is <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Siet dat ghy uwen naesten <rhyme label="a" type="m" corresp="#s10:l1">sticht</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En wilt Gods woort <rhyme label="b" type="f">vermonden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Op dat ghy niet en wort <rhyme label="a" type="m" corresp="#s10:l1">verplicht</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Onder het jock der <rhyme label="b" type="f" corresp="#s10:l3">sonden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Christus heeft ons soo seer <rhyme label="a" type="m">bemint</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Meer dan een moeder doet haer <rhyme label="a" type="m" corresp="#s11:l1">kint</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Alsoo men magh <rhyme label="b" type="f">aenschouwen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Hy verlaet niet, dit wel <rhyme label="a" type="m" corresp="#s11:l1">versint</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Al die op hem <rhyme label="b" type="f" corresp="#s11:l3">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Looft den Princelijcken Heere <rhyme label="a" type="m">jent</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Die ons de waerheyt maecht <rhyme label="a" type="m" corresp="#s12:l1">bekent</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Door sijnen Gheest van <rhyme label="b" type="f">boven</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Die ons Christus nu heeft <rhyme label="a" type="m" corresp="#s12:l1">ghesent</rhyme></l>
        <l id="s12:l5" met="3" type="-+">En wilt hem altijdt <rhyme label="b" type="f" corresp="#s12:l3">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
