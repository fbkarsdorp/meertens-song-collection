  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Landt ! ghedruckt met <rhyme label="a" type="f">plagen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En opgevult met <rhyme label="a" type="f" corresp="#s1:l1">klagen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Als ghy treurt om 't gheen dat ghy <rhyme label="b" type="m">lijt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Soo treurt eerst om 't gheen dat ghy <rhyme label="b" type="m" corresp="#s1:l3">sijt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En wilt eerst van u <rhyme label="c" type="f">jaghen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">De oorsaeck van dees <rhyme label="c" type="f" corresp="#s1:l5">plaghen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Soo wordt ghy beyde quaden <rhyme label="b" type="m" corresp="#s1:l3">quijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Godts toorn is niet <rhyme label="a" type="f">ontsteecken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Op Menschen, maer <rhyme label="a" type="f" corresp="#s2:l1">ghebreecken</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En buyten sonden is de <rhyme label="b" type="m">Mensch</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Godts <rhyme label="b" type="m" corresp="#s2:l3">aengenamen-herten-wensch</rhyme> !</l>
        <l id="s2:l5" met="3" type="-+">Wel, laet ons 't quaedt dan <rhyme label="c" type="f">kelen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Soo sal Godt ons weer <rhyme label="c" type="f" corresp="#s2:l5">helen</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">En toonen ons sijn gonst <rhyme label="b" type="m" corresp="#s2:l3">allensch</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Als Seba vlucht in <rhyme label="a" type="f">Abel</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Quam David met zijn <rhyme label="a" type="f" corresp="#s3:l1">Sabel</rhyme></l>
        <l id="s3:l3" met="4" type="-+">En steld hem soo wraeckgierigh <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Of hy gansch Abel soudt <rhyme label="b" type="m" corresp="#s3:l3">verslaen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Maer doe na sijn <rhyme label="c" type="f">behaghen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Seba was doodt <rhyme label="c" type="f" corresp="#s3:l5">gheslaghen</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Is hy van Abel <rhyme label="b" type="m" corresp="#s3:l3">afgegaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Soo oock, O Hollandts <rhyme label="a" type="f">Borgers</rhyme> !</l>
        <l id="s4:l2" met="3" type="-+">Vervormt u tot <rhyme label="a" type="f" corresp="#s4:l1">verworgers</rhyme></l>
        <l id="s4:l3" met="4" type="-+">En keelt op sonden dagh aen <rhyme label="b" type="m">dagh</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Op dat Godts wraeck vertrecken <rhyme label="b" type="m" corresp="#s4:l3">magh</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Oock moeten wy in 't <rhyme label="c" type="f">midden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Der plaghen, Godt <rhyme label="c" type="f" corresp="#s4:l5">aen-bidden</rhyme></l>
        <l id="s4:l7" met="4" type="-+">En schutten de ghedreyghde <rhyme label="b" type="m" corresp="#s4:l3">slagh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">En als Godts plaghen <rhyme label="a" type="f">wijcken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En zegen-teeck'nen <rhyme label="a" type="f" corresp="#s5:l1">blijcken</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Soo maeckt een Altaer van uw' <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Daer eeuwigh danck op Offerd <rhyme label="b" type="m" corresp="#s5:l3">werdt</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">En wacht u voort van <rhyme label="c" type="f">sonden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Op dat gheen versche <rhyme label="c" type="f" corresp="#s5:l5">wonden</rhyme></l>
        <l id="s5:l7" met="4" type="-+">'t Ontjuckte Landt op nieuw <rhyme label="b" type="m" corresp="#s5:l3">door-smert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
