    <melody>Nadien uw goddelijkheid</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IN d'Heylige den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Looft ende soeckt sijn <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Tot Godes eer wilt <rhyme label="b" type="f">hooren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Op Sinte Pancras <rhyme label="c" type="m">Feest</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Hoe vroom hy was te <rhyme label="b" type="f" corresp="#s1:l3">vooren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Eer dat hy geeft sijn <rhyme label="c" type="m" corresp="#s1:l4">geest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Veele <rhyme label="a" type="m">Diocletiaen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van die Godts eer <rhyme label="a" type="m" corresp="#s2:l1">voorstaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Laet dooden in sijn <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Door 't vyer ende door 't <rhyme label="c" type="m">swaerdt</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">In tijdt van dese <rhyme label="b" type="f" corresp="#s2:l3">plagen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sint Pancrus is <rhyme label="c" type="m" corresp="#s2:l4">gebaert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sijn Vader van <rhyme label="a" type="m">geslacht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Was Edel en <rhyme label="a" type="m" corresp="#s3:l1">geacht</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Als dese soude <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Seydt: ey, Broeder sorgh <rhyme label="c" type="m">draeght</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Om mijn Soon en sijn <rhyme label="b" type="f" corresp="#s3:l3">erven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat hy 't goedt niet door <rhyme label="c" type="m" corresp="#s3:l4">jaeght</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sijn Broeder neemt het <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En heeft getrouw <rhyme label="a" type="m" corresp="#s4:l1">voldaen</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Daer na reysde na <rhyme label="b" type="f">Roomen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daer van Sint <rhyme label="c" type="m">Marcelijn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Verstaen, dat Sathans <rhyme label="b" type="f" corresp="#s4:l3">droomen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Het Heydens-dom maer <rhyme label="c" type="m" corresp="#s4:l4">zijn</rhyme>,.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dese Paus haer noch <rhyme label="a" type="m">leert</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Als men Afgoden <rhyme label="a" type="m" corresp="#s5:l1">eert</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Godt niet kanne <rhyme label="b" type="f">behagen</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">'t Roomsch geloof nemen <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Haer blintheyt sy doe <rhyme label="b" type="f" corresp="#s5:l3">sagen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hierom alles <rhyme label="c" type="m" corresp="#s5:l4">vesmaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Door Doopsel zijn <rhyme label="a" type="m">versterckt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Haer vroomen daet <rhyme label="a" type="m" corresp="#s6:l1">aenmerckt</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Tot Godts vyanden <rhyme label="b" type="f">loopen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Verfoeyen den <rhyme label="c" type="m">Afgodt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Gedoodt te worden <rhyme label="b" type="f" corresp="#s6:l3">hoopen</rhyme>;</l>
        <l id="s6:l6" met="3" type="-+">Wenschen na 't Hemels <rhyme label="c" type="m" corresp="#s6:l4">lot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">d'Heydens verwonder <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sy laten haer vry <rhyme label="a" type="m" corresp="#s7:l1">gaen</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">In haer sien Godes <rhyme label="b" type="f">gaven</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Sint Pancrus waerden <rhyme label="c" type="m">Oom</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die sterft na korte <rhyme label="b" type="f" corresp="#s7:l3">dagen</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Pancrus blijft even <rhyme label="c" type="m" corresp="#s7:l4">vroom</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Daer na <rhyme label="a" type="m">Diocletiaen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">In wreedtheydt neemt noch <rhyme label="a" type="m" corresp="#s8:l1">aen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Christenen laet hy <rhyme label="b" type="f">dooden</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Seer menigh in 't <rhyme label="c" type="m">getal</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Die niet achten <rhyme label="b" type="f" corresp="#s8:l3">d'Afgoden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Voor haren Godt en <rhyme label="c" type="m" corresp="#s8:l4">Al</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Soo spreeckt <rhyme label="a" type="m">Diocletiaen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Gevangen Pancrus <rhyme label="a" type="m" corresp="#s9:l1">aen</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Ghy schoon en jongh van <rhyme label="b" type="f">jaren</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Rijck, van Edel <rhyme label="c" type="m">geslacht</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Laet u gekruysten <rhyme label="b" type="f" corresp="#s9:l3">varen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">d' Afgoden voor Godt <rhyme label="c" type="m" corresp="#s9:l4">acht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">'k Sal u voor uwe <rhyme label="a" type="m">loon</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Achten voor mijnen <rhyme label="a" type="m" corresp="#s10:l1">Soon</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Met goet en eer <rhyme label="b" type="f">beminnen</rhyme>;</l>
        <l id="s10:l4" met="3" type="-+">Maer so ghy dit <rhyme label="c" type="m">veracht</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Het vyer sal u <rhyme label="b" type="f" corresp="#s10:l3">verslinden</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Met sijne groote <rhyme label="c" type="m" corresp="#s10:l4">kracht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Sint Pancrus antwoordt <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Oudt zijnde veerthien <rhyme label="a" type="m" corresp="#s11:l1">Iaer</rhyme>:</l>
        <l id="s11:l3" met="3" type="-+">Om u, noch <rhyme label="b" type="f">Coninghrijcke</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Sal ick van Godes <rhyme label="c" type="m">eer</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Met 't hart of yet <rhyme label="b" type="f" corresp="#s11:l3">afwijcken</rhyme>:</l>
        <l id="s11:l6" met="3" type="-+">Met my doet u <rhyme label="c" type="m" corresp="#s11:l4">begeer</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Ghy voor Afgoden <rhyme label="a" type="m">houdt</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">O Keyser! Menschen <rhyme label="a" type="m" corresp="#s12:l1">stout</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Die vol van sonden <rhyme label="b" type="f">waren</rhyme>:</l>
        <l id="s12:l4" met="3" type="-+">Soo ghy u Dienaers <rhyme label="c" type="m">sagh</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Als haer, hoe sou ghy <rhyme label="b" type="f" corresp="#s12:l3">baren</rhyme>?</l>
        <l id="s12:l6" met="3" type="-+">Ghy doodt haer op een <rhyme label="c" type="m" corresp="#s12:l4">dagh</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Keyser, soo ghy niet <rhyme label="a" type="m">haet</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Oprecht en metter <rhyme label="a" type="m" corresp="#s13:l1">daet</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Te dienen u <rhyme label="b" type="f">Afgoden</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Ghy raeckt in d'Helsche <rhyme label="c" type="m">brandt</rhyme>.</l>
        <l id="s13:l5" met="3" type="-+">Hierom met 't Swaert laet <rhyme label="b" type="f" corresp="#s13:l3">dooden</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Pancrus ons waerde <rhyme label="c" type="m" corresp="#s13:l4">Sant</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
