  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WT de diepten, o <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijner benautheyt <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Roep ick tot u gaer <rhyme label="a" type="f" corresp="#s1:l1">seere</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In mijne anghst en <rhyme label="b" type="m" corresp="#s1:l2">noot</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Heer wilt mijn stem <rhyme label="c" type="f">verhooren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Want het nu tijdt zijn <rhyme label="d" type="m">sal</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Laet komen tot u <rhyme label="c" type="f" corresp="#s1:l5">ooren</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Mijn klachtigh bidden <rhyme label="d" type="m" corresp="#s1:l6">al</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wilt ghy met ernst de <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Toerekenen <rhyme label="b" type="m">voortaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wie kan t'eenigen <rhyme label="a" type="f" corresp="#s2:l1">stonden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In u oordeel <rhyme label="b" type="m" corresp="#s2:l2">bestaen</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Maer ghy wilt, Heer, <rhyme label="c" type="f">vergheven</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">De sonden minst en <rhyme label="d" type="m">meest</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Dies zijt ghy in dit <rhyme label="c" type="f" corresp="#s2:l5">leven</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Seer bemint en <rhyme label="d" type="m" corresp="#s2:l6">gevreest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Heer wil ick <rhyme label="a" type="f">verwachten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Mijn ziel staet altijdt <rhyme label="b" type="m">voort</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Op hem, met gantscher <rhyme label="a" type="f" corresp="#s3:l1">krachten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hoop ick vast op sijn <rhyme label="b" type="m" corresp="#s3:l2">woordt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Mijn ziel verwacht <rhyme label="c" type="f">langhmoedigh</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Van d'een nacht waecke <rhyme label="d" type="m">swaer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Tot dat d'ander komt <rhyme label="c" type="f" corresp="#s3:l5">spoedigh</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En de dagh opstaet <rhyme label="d" type="m" corresp="#s3:l6">klaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dat Israel vast <rhyme label="a" type="f">bouwe</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Op Godt de hope <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Want vol genaed' en <rhyme label="a" type="f" corresp="#s4:l1">trouwe</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Is de Heer en Godt <rhyme label="b" type="m" corresp="#s4:l2">mijn</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Hy is die <rhyme label="c" type="f">onbesweecken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Israel gantsch <rhyme label="d" type="m">bevrijt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Van sonden en <rhyme label="c" type="f" corresp="#s4:l5">gebreecken</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Die hy met een schelt <rhyme label="d" type="m" corresp="#s4:l6">quijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
