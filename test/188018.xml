  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">TErwijl het Philestijnsche <rhyme label="a" type="m">Heyr</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Met haer ghescharde <rhyme label="a" type="m" corresp="#s1:l1">Moort-gheweyr</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Voor Godes Volck de toegangh <rhyme label="b" type="m">stut</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van Bethl'hems dierb're <rhyme label="b" type="m" corresp="#s1:l3">Water-put</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo stapten Davids Helden <rhyme label="a" type="m">heen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Tot aen de Put, daer zy met <rhyme label="a" type="m" corresp="#s2:l1">een</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Wt-haelden 't edel koelb're <rhyme label="b" type="m">nat</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En droeghen wegh dien <rhyme label="b" type="m" corresp="#s2:l3">Water-schat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Of schoon op 't <rhyme label="a" type="m">alder-onversienst</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Het Leger onder Sathans <rhyme label="a" type="m" corresp="#s3:l1">dienst</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Op Godes volck sijn Pijlen <rhyme label="b" type="m">loost</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Noch vrijt Godt haer, en schenckt haer <rhyme label="b" type="m" corresp="#s3:l3">troost</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ons Bethlehemsche <rhyme label="a" type="m">Heyl-Fonteyn</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Verquickt haer door sijn woordt seer <rhyme label="a" type="m" corresp="#s4:l1">reyn</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Schoon haer des Wereldts haet <rhyme label="b" type="m">omvat</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als 't Krijghs-volck een besette <rhyme label="b" type="m" corresp="#s4:l3">Stadt</rhyme>.</l>
      </lg>
    </lg>
  </text>
