    <melody>Ontwaak u toch allen met vlijt</melody>
    <categories>
      <category translation="cycle of life">levenscyclus</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy die de Eensaemheydt <rhyme label="a" type="m">bemint</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Als soet en <rhyme label="b" type="m">stil</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En haer gemackelijck <rhyme label="a" type="m" corresp="#s1:l1">bevint</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Vol wensch en <rhyme label="b" type="m" corresp="#s1:l2">wil</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soud' anders wel <rhyme label="c" type="f">gevoelen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Indienje maer <rhyme label="d" type="m">besocht</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Dat kan 't paren, en 't <rhyme label="e" type="f">vergaren</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">En het <rhyme label="f" type="f">trouwen</rhyme>,</l>
        <l id="s1:l9" met="5" type="-+">Is meer als van de Eensaemheydt te <rhyme label="f" type="f" corresp="#s1:l8">houwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Eensaemheydt baert <rhyme label="a" type="m">ongemack</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">En groot <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Want wort men out, en kout, en <rhyme label="a" type="m" corresp="#s2:l1">swack</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Of hoe 't <rhyme label="b" type="m" corresp="#s2:l2">geschiet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Het is quaet om <rhyme label="c" type="f">dragen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Alleen een swaren <rhyme label="d" type="m">last</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Met malkander, kan d'een <rhyme label="e" type="f">d'ander</rhyme></l>
        <l id="s2:l8" met="2" type="-+"><rhyme label="f" type="f">Ondersteunen</rhyme>,</l>
        <l id="s2:l9" met="5" type="-+">Daer eenigh een alleenigh staegh moet <rhyme label="f" type="f" corresp="#s2:l8">kreunen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer d'eene handt de ander <rhyme label="a" type="m">wast</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Daer wort 'et <rhyme label="b" type="m">hel</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Daer ellick op elckander <rhyme label="a" type="m" corresp="#s3:l1">past</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Daer gaet 'et <rhyme label="b" type="m" corresp="#s3:l2">wel</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Daer soo vereende <rhyme label="c" type="f">zielen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Te samen sijn <rhyme label="d" type="m">gevoeght</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Sal Gods zegen, als een <rhyme label="e" type="f">regen</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Neder <rhyme label="f" type="f">dalen</rhyme>,</l>
        <l id="s3:l9" met="5" type="-+">En 't lieve paer met sijne gunst <rhyme label="f" type="f" corresp="#s3:l8">bestralen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dies lof dan Goddelijcke <rhyme label="a" type="m">Echt</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Die ontucht <rhyme label="b" type="m">weerdt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En die de sielen t'samen <rhyme label="a" type="m" corresp="#s4:l1">vlecht</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Na elcx <rhyme label="b" type="m" corresp="#s4:l2">begeert</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Om eens gesint te <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In vree, na wensch en <rhyme label="d" type="m">lust</rhyme>:</l>
        <l id="s4:l7" met="4" type="-+">'k Wensch van herten, dat noyt <rhyme label="e" type="f">smerten</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">V <rhyme label="f" type="f">bejeeg'nen</rhyme>,</l>
        <l id="s4:l9" met="5" type="-+">Maer dat Gods gunst op u te saem mach <rhyme label="f" type="f" corresp="#s4:l8">reeg'nen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
