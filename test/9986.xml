    <tags/>
    <melody>Het daagt in de oosten</melody>
  <author>Isaak A. van Vaerlen en Jan Jansz. van Asten</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk heb te veel <rhyme label="a" type="f">verlooren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Aen u, mijn waerde <rhyme label="b" type="m">Vrouw</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Agh! daght ick van te <rhyme label="a" type="f" corresp="#s1:l1">vooren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat ick dees quellingh <rhyme label="b" type="m" corresp="#s1:l2">sou</rhyme></l>
        <l id="s1:l5" met="3" type="-+">In dees bedroefde <rhyme label="c" type="f">tijden</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Moeten <rhyme label="c" type="f" corresp="#s1:l5">lijden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer laes! wat baet mijn <rhyme label="a" type="f">klaghen</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Die ick bemin is <rhyme label="b" type="m">heen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Bedroeft in't Graf <rhyme label="a" type="f" corresp="#s2:l1">ghedragen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En laet my vol <rhyme label="b" type="m" corresp="#s2:l2">gheween</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Bekommert vol <rhyme label="c" type="f">ghedachten</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">In veel <rhyme label="c" type="f" corresp="#s2:l5">klachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het schreyen van mijn <rhyme label="a" type="f">Schapen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die jongh en teder <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Onthoudt mijn van het <rhyme label="a" type="f" corresp="#s3:l1">slaepen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Soo dat het Hart vol <rhyme label="b" type="m" corresp="#s3:l2">pijn</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Inwendigh deur mijn <rhyme label="c" type="f">treuren</rhyme></l>
        <l id="s3:l6" met="2" type="+-">Schijnt te <rhyme label="c" type="f" corresp="#s3:l5">scheuren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Nu vind ik my <rhyme label="a" type="f">verlaten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dien ick veel had <rhyme label="b" type="m">vertrout</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Bevind ick dat mijn <rhyme label="a" type="f" corresp="#s4:l1">haten</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Dies mijn het leven <rhyme label="b" type="m" corresp="#s4:l2">rout</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En wens soo meenigh <rhyme label="c" type="f">werven</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Om te <rhyme label="c" type="f" corresp="#s4:l5">sterven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gheen Mensch en kan <rhyme label="a" type="f">uytspreecken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Mijn overgroot <rhyme label="b" type="m">verdriet</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Ick blijf in droefheydt <rhyme label="a" type="f" corresp="#s5:l1">steecken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En daer is niemandt <rhyme label="b" type="m" corresp="#s5:l2">niet</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Die soeckt mijn rou te <rhyme label="c" type="f">stelpen</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">Of te <rhyme label="c" type="f" corresp="#s5:l5">helpen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Help Hemel! help my <rhyme label="a" type="f">sughten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Verlight mijn droef <rhyme label="b" type="m">ghemoet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Tot wien sal ick nu <rhyme label="a" type="f" corresp="#s6:l1">vlughten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ick weet gheen raedt soo <rhyme label="b" type="m" corresp="#s6:l2">Godt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Als Godt mijn droevigh <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s6:l6" met="2" type="+-">Op te <rhyme label="c" type="f" corresp="#s6:l5">gheven</rhyme>:</l>
      </lg>
    </lg>
  </text>
</song>
