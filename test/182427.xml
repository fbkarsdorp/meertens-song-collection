    <tags/>
    <melody>Haast u mijn schone vriendin</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Veel genade en <rhyme label="a" type="f">vrede</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Van den hemelschen Vader <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De liefde Christi <rhyme label="a" type="f" corresp="#s1:l1">mede</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Den troost zijns Geestes in u <rhyme label="b" type="m" corresp="#s1:l2">gemoet</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Zy u gewenst tot eenen <rhyme label="b" type="m" corresp="#s1:l2">groet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En dat gy meugt <rhyme label="c" type="f">behagen</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Den Heere, en zijn wille <rhyme label="b" type="m" corresp="#s1:l2">doet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Tot eijnde van u <rhyme label="c" type="f" corresp="#s1:l6">dagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het aengenaem <rhyme label="a" type="f">behagen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat ik in u gezelschap <rhyme label="b" type="m">had</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dese voorlede <rhyme label="a" type="f" corresp="#s2:l1">dagen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Is de reden en oorsaek <rhyme label="b" type="m" corresp="#s2:l2">dat</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">In dit nieuw Lied heb <rhyme label="b" type="m" corresp="#s2:l2">aengevat</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Te maken met <rhyme label="c" type="f">begeeren</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Of het mogt onse vriendschap <rhyme label="b" type="m" corresp="#s2:l2">wat</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Vernieuwen of <rhyme label="c" type="f" corresp="#s2:l6">vermeeren</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Konde het ook <rhyme label="a" type="f">versterken</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Om u, of my in desen <rhyme label="b" type="m">tijd</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Tot goed doen op te <rhyme label="a" type="f" corresp="#s3:l1">wekken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Zoo diend ‘t ons ook tot <rhyme label="b" type="m" corresp="#s3:l2">profijt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Laet ons God loven met <rhyme label="b" type="m" corresp="#s3:l2">jolijt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daar wy in goede <rhyme label="c" type="f">zaken</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Konnen en mogen zijn <rhyme label="b" type="m" corresp="#s3:l2">verblijd</rhyme></l>
        <l id="s3:l8" met="3" type="-+">En onsen geest <rhyme label="c" type="f" corresp="#s3:l6">vermaken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wat kander beter <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dan als wanneer de jonge <rhyme label="b" type="m">Ieugt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Met zingen ende <rhyme label="a" type="f" corresp="#s4:l1">lesen</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">En in Gods vreese zig <rhyme label="b" type="m" corresp="#s4:l2">verheugt</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Laets ons nemen ons <rhyme label="b" type="m" corresp="#s4:l2">geneugt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In ‘t heylig woord des <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Het welke ons in alle <rhyme label="b" type="m" corresp="#s4:l2">deugt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">kan onderwijsen <rhyme label="c" type="f" corresp="#s4:l6">leeren</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Want zo wy ons <rhyme label="a" type="f">vermaken</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Stellen in ’s werelds <rhyme label="b" type="m">ydelheid</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die haest vergaende <rhyme label="a" type="f" corresp="#s5:l1">zaken</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Sullen ons lonen met <rhyme label="b" type="m" corresp="#s5:l2">droefheid</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Bemind niet zoo Iohannes <rhyme label="b" type="m" corresp="#s5:l2">zeyt</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">De wereld nog de <rhyme label="c" type="f">dingen</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Waer zy de menschen toe <rhyme label="b" type="m" corresp="#s5:l2">verleyd</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Soekt in ‘t verderf te <rhyme label="c" type="f" corresp="#s5:l6">bringen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Laet ons veel liever <rhyme label="a" type="f">peyse</rhyme></l>
        <l id="s6:l2" met="4" type="-+">En ons voor oogen houden <rhyme label="b" type="m">dat</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wy hier maar henen <rhyme label="a" type="f" corresp="#s6:l1">reysen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Gelijk als Pellegrim wel <rhyme label="b" type="m" corresp="#s6:l2">wat</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Deel hebben wy aan werelds <rhyme label="b" type="m" corresp="#s6:l2">schat</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Wy zijn hier <rhyme label="c" type="f">vreemdelingen</rhyme>:</l>
        <l id="s6:l7" met="4" type="-+">Wy verwagten een beter <rhyme label="b" type="m" corresp="#s6:l2">Stad</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Daer Godt ons wil <rhyme label="c" type="f" corresp="#s6:l6">bringen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Konden wy maar des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Groote goedheid die hy ons <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Na waerdye <rhyme label="a" type="f" corresp="#s7:l1">estimeeren</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dat hy ons voor zijn kinderen <rhyme label="b" type="m" corresp="#s7:l2">groet</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Wy soud u al des werelds <rhyme label="b" type="m" corresp="#s7:l2">goed</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Voor beuselingen <rhyme label="c" type="f">agten</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">En na ons verhuisinge <rhyme label="b" type="m" corresp="#s7:l2">soet</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Dunkt my neerstiger <rhyme label="c" type="f" corresp="#s7:l6">cragten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Indien wy dan <rhyme label="a" type="f">geloven</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Erfgenamen te zijn van ‘t <rhyme label="b" type="m">Rijk</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Het hemelrijk hier <rhyme label="a" type="f" corresp="#s8:l1">boven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Laet ons hier alles dan <rhyme label="b" type="m" corresp="#s8:l2">gelijk</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Drek agten en met ’s wereld <rhyme label="b" type="m" corresp="#s8:l2">Rijk</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Ons zielen niet <rhyme label="c" type="f">besmetten</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">En ons voeten sonder <rhyme label="b" type="m" corresp="#s8:l2">afwijk</rhyme>:</l>
        <l id="s8:l8" met="3" type="-+">Op ‘t pad des levens <rhyme label="c" type="f" corresp="#s8:l6">setten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wil God ons Vader <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Is ‘t dat wy nu zijn Kinderen <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Zoo moeten wy niet <rhyme label="a" type="f" corresp="#s9:l1">vreesen</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Hier wandelen voor Gods <rhyme label="b" type="m" corresp="#s9:l2">aenschijn</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En heilig leven dit <rhyme label="b" type="m" corresp="#s9:l2">termijn</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Het welke dat ik <rhyme label="c" type="f">wensche</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">God in ons werk uyt liefde <rhyme label="b" type="m" corresp="#s9:l2">fijn</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">U, my, en alle <rhyme label="c" type="f" corresp="#s9:l6">menschen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wild dog ten besten <rhyme label="a" type="f">houwen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Weerde vrienden dit simpel <rhyme label="b" type="m">Lied</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">Gelijk ik ook <rhyme label="a" type="f" corresp="#s10:l1">vertrouwe</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Uijt vriendschap is ‘t aen u <rhyme label="b" type="m" corresp="#s10:l2">geschiet</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Laet ons dan in ons levens <rhyme label="b" type="m" corresp="#s10:l2">tijd</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Dog tragten te <rhyme label="c" type="f">verwerven</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Dat wy tot ons zielen <rhyme label="b" type="m" corresp="#s10:l2">profijt</rhyme>:</l>
        <l id="s10:l8" met="3" type="-+">Ter deege leere <rhyme label="c" type="f" corresp="#s10:l6">sterven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
