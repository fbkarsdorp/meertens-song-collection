  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">BElsaser, vol en <rhyme label="a" type="f">droncken</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Lach in lust <rhyme label="a" type="f" corresp="#s1:l1">versoncken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Voor straf en plage minst <rhyme label="b" type="m">bevreest</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Maer vierde een Af-Godts <rhyme label="b" type="m" corresp="#s1:l3">Feest</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En liet de Af-Go√¥n <rhyme label="c" type="f">loven</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Maer vloeckte Godt van <rhyme label="c" type="f" corresp="#s1:l5">boven</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Tot blijck van sijn Godtloose <rhyme label="b" type="m" corresp="#s1:l3">Gheest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer doe dit dart'le <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Op 't hooghste was <rhyme label="a" type="f" corresp="#s2:l1">geresen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Quam voor de Koningh eenen <rhyme label="b" type="m">handt</rhyme></l>
        <l id="s2:l4" met="4" type="+-">En schreef sijn oordeel aen de <rhyme label="b" type="m" corresp="#s2:l3">want</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Doe was de vreucht ten <rhyme label="c" type="f">enden</rhyme>;</l>
        <l id="s2:l6" met="3" type="-+">Want hy voeld met <rhyme label="c" type="f" corresp="#s2:l5">ellenden</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Hem dicht omringht aen yder <rhyme label="b" type="m" corresp="#s2:l3">kant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dus gaen de <rhyme label="a" type="f">vrolijckheden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van al de sondaers <rhyme label="a" type="f" corresp="#s3:l1">mede</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Terwijl men yd'le vreucht <rhyme label="b" type="m">bedrijft</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">'t Geweten daer op 't oordeel <rhyme label="b" type="m" corresp="#s3:l3">schrijft</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dan smelt de lust daer <rhyme label="c" type="f">henen</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Maer Saligh is die <rhyme label="c" type="f" corresp="#s3:l5">ghene</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Die quade lusten van hem <rhyme label="b" type="m" corresp="#s3:l3">drijft</rhyme>.</l>
      </lg>
    </lg>
  </text>
