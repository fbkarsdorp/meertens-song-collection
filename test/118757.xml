  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Wilt gy veel by Godt <rhyme label="a" type="f">verkeeren</rhyme>?</l>
        <l id="s1:l2" met="4" type="+-">Houd dan staeg 't gebed in <rhyme label="a" type="f" corresp="#s1:l1">eeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Want het is een <rhyme label="b" type="m">t'samen-spraeck</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Der Geloov'ge ziel met <rhyme label="c" type="f">Gode</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">'t Is een spoed'ge <rhyme label="c" type="f" corresp="#s1:l4">Hemels-bode</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Wel beschickend' onse <rhyme label="b" type="m" corresp="#s1:l3">saeck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wilt gy vty van alle quaedt <rhyme label="a" type="f">zijn</rhyme>?</l>
        <l id="s2:l2" met="4" type="+-">Bidden sal de beste raedt <rhyme label="a" type="f" corresp="#s2:l1">zijn</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">'t Is een schutsel voor <rhyme label="b" type="m">gewelt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Tegen oorlogh een <rhyme label="c" type="f">verdedigingh</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Ia een krachtige <rhyme label="c" type="f" corresp="#s2:l4">bevredingh</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Tegen al wat ons <rhyme label="b" type="m" corresp="#s2:l3">ontstelt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wilt ghy smaken Godes <rhyme label="a" type="f">goedheidt</rhyme></l>
        <l id="s3:l2" met="4" type="+-">En on-sprekelicke <rhyme label="a" type="f" corresp="#s3:l1">soetheidt</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Noodight hem door uw <rhyme label="b" type="m">gebedt</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Tot hetn huis uws herten <rhyme label="c" type="f">binnen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En laet uw gedacht en <rhyme label="c" type="f" corresp="#s3:l4">sinnen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Op niet anders zijn <rhyme label="b" type="m" corresp="#s3:l3">geset</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Biddet en gy sult <rhyme label="a" type="f">ontfangen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En uws herten wensch <rhyme label="a" type="f" corresp="#s4:l1">erlangen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Dat uw blijdschap zy <rhyme label="b" type="m">vervult</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Merckt op daed'lick geen <rhyme label="c" type="f">verhooringh</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Valt niet in een quaa <rhyme label="c" type="f" corresp="#s4:l4">bekooringh</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Maer verbeidt hem met <rhyme label="b" type="m" corresp="#s4:l3">gedult</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Houdt sterck aen in uw <rhyme label="a" type="f">gebeden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Waeckt daer in met <rhyme label="a" type="f" corresp="#s5:l1">danckbaerheden</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Want sijn uuren heeft de <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Om de sijne te <rhyme label="c" type="f">beproeven</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">En haer, na een klein <rhyme label="c" type="f" corresp="#s5:l4">vertoeven</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Te vertroosten dies te <rhyme label="b" type="m" corresp="#s5:l3">meer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Godt verhoort altijdt de <rhyme label="a" type="f">sijne</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Schoon hy niet te helpen <rhyme label="a" type="f" corresp="#s6:l1">schijne</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Is 't niet voort na onsen <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">'t Is nochtans tot onsen <rhyme label="c" type="f">besten</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">En hy sal oock noch ten <rhyme label="c" type="f" corresp="#s6:l4">lesten</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Onse zielen maken <rhyme label="b" type="m" corresp="#s6:l3">stil</rhyme>.</l>
      </lg>
    </lg>
  </text>
