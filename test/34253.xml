  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">COridon sucht nacht ende <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En doet mistroostigh sijn <rhyme label="a" type="m" corresp="#s1:l1">beklagh</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Onder een groene <rhyme label="b" type="f">linde</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Roepende <rhyme label="b" type="f" corresp="#s1:l3">over-luydt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Roepende <rhyme label="c" type="m">over-luydt</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Waer is mijn Lief, mijn <rhyme label="c" type="m" corresp="#s1:l5">Bruydt</rhyme></l>
        <l id="s1:l7" met="2" type="+-">Die ick <rhyme label="b" type="f" corresp="#s1:l3">beminde</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dan gaet hy achter ende <rhyme label="a" type="m">veur</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En is ghestadigh aen haer <rhyme label="a" type="m" corresp="#s2:l1">deur</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hy roept dat hy moet <rhyme label="b" type="f">sterven</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">In wiens klaer <rhyme label="b" type="f" corresp="#s2:l3">ghesicht</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">In wiens klaer <rhyme label="c" type="m">ghesicht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die hem sijn hert <rhyme label="c" type="m" corresp="#s2:l5">verlicht</rhyme></l>
        <l id="s2:l7" met="2" type="+-">Alsoo te <rhyme label="b" type="f" corresp="#s2:l3">derven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat doncker wolck van haet en <rhyme label="a" type="m">nijdt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Kander beletten t’mijnder <rhyme label="a" type="m" corresp="#s3:l1">spijt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De klare Son haer <rhyme label="b" type="f">stralen</rhyme>?</l>
        <l id="s3:l4" met="3" type="-+">Daer ick als eene <rhyme label="b" type="f" corresp="#s3:l3">Maen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Daer ick als eene <rhyme label="c" type="m">Maen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Het licht moet af <rhyme label="c" type="m" corresp="#s3:l5">ontfaen</rhyme>,</l>
        <l id="s3:l7" met="2" type="+-">En ’t leven <rhyme label="b" type="f" corresp="#s3:l3">halen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dan gaet hy treurigh en <rhyme label="a" type="m">mismoedt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Gelijck een Tortel-duyve <rhyme label="a" type="m" corresp="#s4:l1">doet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die haer gaeyken heeft <rhyme label="b" type="f">verlooren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Singend’ een droevigh <rhyme label="b" type="f" corresp="#s4:l3">liedt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Singende een droevigh <rhyme label="c" type="m">liedt</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Voorwaer ’t is groot <rhyme label="c" type="m" corresp="#s4:l5">verdriet</rhyme></l>
        <l id="s4:l7" met="2" type="+-">Sonder <rhyme label="b" type="f" corresp="#s4:l3">verkooren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die noyt amoureurs en <rhyme label="a" type="m">was</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En weet niet hoe hy is te <rhyme label="a" type="m" corresp="#s5:l1">pas</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die een Lief heeft in ’t <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dan is hem sijn <rhyme label="b" type="f" corresp="#s5:l3">gemoedt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dan is hem sijn <rhyme label="c" type="m">gemoedt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">’t Welck hem onrustigh <rhyme label="c" type="m" corresp="#s5:l5">doet</rhyme></l>
        <l id="s5:l7" met="2" type="+-">Buyten sijn <rhyme label="b" type="f" corresp="#s5:l3">sinnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
