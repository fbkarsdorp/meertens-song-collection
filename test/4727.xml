  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt is, o fijne <rhyme label="a" type="m">mans</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Toch uw’ <rhyme label="b" type="f">Iustificaty</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Een uitterlijkke <rhyme label="a" type="m" corresp="#s1:l1">glans</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van een <rhyme label="b" type="f" corresp="#s1:l2">denominaty</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Waer deur (zoo ons <rhyme label="c" type="f">betekendt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Heeft David) het <rhyme label="d" type="m">misdaed</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Bedekt, en niet <rhyme label="c" type="f" corresp="#s1:l5">gerekendt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Tot straf werd, of tot <rhyme label="d" type="m" corresp="#s1:l6">quaed</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waerom gelooftmen <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Vergiffenis des <rhyme label="b" type="f">zonden</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Dit moetje, lieve <rhyme label="a" type="m" corresp="#s2:l1">man</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Verstaen met heuschen <rhyme label="b" type="f" corresp="#s2:l2">monde</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Al wat wy van <rhyme label="c" type="f">misdaden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Oit deden, blijft: maer <rhyme label="d" type="m">mag</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Den kind’ren Goods niet <rhyme label="c" type="f" corresp="#s2:l5">schaden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Om ’t Christelijck <rhyme label="d" type="m" corresp="#s2:l6">gezag</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De deugden vanden <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zijn kruis, zijn dood, zijn <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Werd ons, uit liefden <rhyme label="a" type="m" corresp="#s3:l1">teer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Van Gode <rhyme label="b" type="f" corresp="#s3:l2">toegeschreven</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Dit zijn de rijke <rhyme label="c" type="f">waden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daer mee, ’t geloof <rhyme label="d" type="m">bedekt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">De blijvende mis <rhyme label="c" type="f" corresp="#s3:l5">daden</rhyme>:</l>
        <l id="s3:l8" met="3" type="-+">Hoe ghyer ook me’e <rhyme label="d" type="m" corresp="#s3:l6">gekt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Voorwaer,  met grote <rhyme label="a" type="m">reen</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Hoe’n zouwer niet me’e <rhyme label="b" type="f">gekken</rhyme>?</l>
        <l id="s4:l3" met="3" type="-+">De Schrift, eylacen! <rhyme label="a" type="m" corresp="#s4:l1">neen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Sprak noyt van zulken <rhyme label="b" type="f" corresp="#s4:l2">dekken</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Maer dekken, ’t welk <rhyme label="c" type="f">uitwissen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Doed tot de diepste <rhyme label="d" type="m">grond</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Al wat ons oit dee <rhyme label="c" type="f" corresp="#s4:l5">missen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Van boos heyd, of van <rhyme label="d" type="m" corresp="#s4:l6">zond</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer wat? ten is niet <rhyme label="a" type="m">vreemt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat een alzulken <rhyme label="b" type="f">Tempel</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ook zulken kleding <rhyme label="a" type="m" corresp="#s5:l1">neemt</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Tot waerschou, end’ <rhyme label="b" type="f" corresp="#s5:l2">exempel</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Als dat de fijne <rhyme label="c" type="f">knapen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Van Luther en <rhyme label="d" type="m">Calvijn</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Van buyten schijnen <rhyme label="c" type="f" corresp="#s5:l5">schapen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Van binnen wolven <rhyme label="d" type="m" corresp="#s5:l6">sijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sijt wolven; sijt, daer <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Mis deelde <rhyme label="b" type="f">oly-vaten</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Syt bokken; sijt noch <rhyme label="a" type="m" corresp="#s6:l1">vry</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dood-graven met <rhyme label="b" type="f" corresp="#s6:l2">sieraten</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Van buyten: maer van <rhyme label="c" type="f">binnen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Vol rotheyds van <rhyme label="d" type="m">ghebeent</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Maer God kan niet <rhyme label="c" type="f" corresp="#s6:l5">beminnen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Zoo leelijken <rhyme label="d" type="m" corresp="#s6:l6">gemeent</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zijn bruyd is zonder <rhyme label="a" type="m">smet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En die voor heen was <rhyme label="b" type="f">duyster</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Kreeg van haer Bruygoms <rhyme label="a" type="m" corresp="#s7:l1">bed</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Een al te schonen <rhyme label="b" type="f" corresp="#s7:l2">luyster</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Haer vuil werd af <rhyme label="c" type="f">gewassen</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">Op dat, van lid te <rhyme label="d" type="m">lid</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Het lichaem toch zou <rhyme label="c" type="f" corresp="#s7:l5">passen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Op ’t hoofd zoo schoon en <rhyme label="d" type="m" corresp="#s7:l6">wit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
