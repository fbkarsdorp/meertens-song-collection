<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184911</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Psalm 118 Datheen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KAn vriendt, een vriendt seer wel <rhyme label="a" type="f">vermaecken</rhyme>?</l>
        <l id="s1:l2" met="4" type="-+">Sijn Man en Wijf elck anders <rhyme label="b" type="m">vreught</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Gelijck sy zijn: daer by noch <rhyme label="a" type="f" corresp="#s1:l1">vaecken</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Een lieve Kindt haer meer <rhyme label="b" type="m" corresp="#s1:l2">verheught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Schijnt ons het hart van vreught <rhyme label="a" type="f">t'ontspringen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wanneermen met de soete <rhyme label="b" type="m">Ieught</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">U vrolijck nieuwe lietjens <rhyme label="a" type="f" corresp="#s2:l1">singen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Tot stichtinge en bequame <rhyme label="b" type="m" corresp="#s2:l2">vreught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Kan yemandt spijs en dranck <rhyme label="a" type="f">bereyden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Sulcks datse soet en lecker <rhyme label="b" type="m">smaeckt</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">Kanmen pleysieren, ryden, <rhyme label="a" type="f" corresp="#s3:l1">weyden</rhyme>?</l>
        <l id="s3:l4" met="4" type="-+">Daer menich Mensch sigh in <rhyme label="b" type="m" corresp="#s3:l2">vermaeckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wat mach ick dit oft meer <rhyme label="a" type="f">verhalen</rhyme>?</l>
        <l id="s4:l2" met="4" type="-+">Och! al die soetheydt heeft sijn <rhyme label="b" type="m">gal</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maer dat van u Godt! komt <rhyme label="a" type="f" corresp="#s4:l1">dalen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat gaet noch verre boven <rhyme label="b" type="m" corresp="#s4:l2">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Kan al 't voornoemde ons <rhyme label="a" type="f">vermaken</rhyme>?</l>
        <l id="s5:l2" met="4" type="-+">Dat maer u slechte Schepsels <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hoe soet! hoe soet! moet ghy dan <rhyme label="a" type="f" corresp="#s5:l1">smaken</rhyme>?</l>
        <l id="s5:l4" met="4" type="-+">Fonteyn van suyker soete <rhyme label="b" type="m" corresp="#s5:l2">Wijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">U vreughden-Oly gaet ghy <rhyme label="a" type="f">gieten</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die 'sWerelts vreught te boven <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die hier u Schaer alleen <rhyme label="a" type="f" corresp="#s6:l1">genieten</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Selfs die hier zijn in slechten <rhyme label="b" type="m" corresp="#s6:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Het geen dat ghy my hebt <rhyme label="a" type="f">ghschonken</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Smaeckt my o Heer! soo over <rhyme label="b" type="m">soet</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Och! och! het maeckt my dickmael <rhyme label="a" type="f" corresp="#s7:l1">droncken</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dat ick van vreught op springen <rhyme label="b" type="m" corresp="#s7:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Mijn Ziele vlieght dan heel na <rhyme label="a" type="f">boven</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En dringht vast alle wolcken <rhyme label="b" type="m">door</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Sy gaet mijn Heer mijn God dan <rhyme label="a" type="f" corresp="#s8:l1">loven</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Die biedt haer dan sijn gunstigh <rhyme label="b" type="m" corresp="#s8:l2">oor</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Och! mocht sy daer dan eeuwigh <rhyme label="a" type="f">blijven</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Die soo met vreughde is <rhyme label="b" type="m">vervult</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Maer och! 't gaet Godt noch niet <rhyme label="a" type="f" corresp="#s9:l1">believen</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Mijn waerde Ziel, ey! neemt <rhyme label="b" type="m" corresp="#s9:l2">gedult</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghy moet hier noch een weynigh <rhyme label="a" type="f">woonen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">In dit bedroefde tranen <rhyme label="b" type="m">dal</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Maer kort hier na sal Godt u <rhyme label="a" type="f" corresp="#s10:l1">toonen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Dat hy het Alles is in <rhyme label="b" type="m" corresp="#s10:l2">Al</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
