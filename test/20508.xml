    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ICk voel nu mijn Ziele <rhyme label="a" type="f">dringhen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">2 Om Godts lof te roepen <rhyme label="b" type="m">uyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">3 Dus wil ick van herten <rhyme label="a" type="f" corresp="#s1:l1">singhen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">4 Nieu ghedicht met bly <rhyme label="b" type="m" corresp="#s1:l2">gheluyt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Want ick ben nu heel <rhyme label="c" type="m">gherust</rhyme></l>
        <l id="s1:l6" met="4" type="+-">In den Heer, mijn hooghste <rhyme label="c" type="m" corresp="#s1:l5">lust</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Die mijn Ziele heeft <rhyme label="d" type="f">genesen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Vry-ghemaeckt, ontlast van <rhyme label="d" type="f" corresp="#s1:l7">vreesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Door veel woeste <rhyme label="a" type="f">hinder-palen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die ontroerden mijn <rhyme label="b" type="m">ghedacht</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En my deden droevigh <rhyme label="a" type="f" corresp="#s2:l1">dwalen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Heeft sijn handt my <rhyme label="b" type="m" corresp="#s2:l2">over-bracht</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Sijn Gheest heeft mijn Geest <rhyme label="c" type="m">beroert</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Heel verlicht en <rhyme label="c" type="m" corresp="#s2:l5">aenghevoert</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Om hem even soo te <rhyme label="d" type="f">eeren</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Als hy in sijn Woordt doet <rhyme label="d" type="f" corresp="#s2:l7">leeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Och ! ick heb te langh gaen <rhyme label="a" type="f">wachten</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">(Goede Godt, het is mijn <rhyme label="b" type="m">schult</rhyme>)</l>
        <l id="s3:l3" met="4" type="+-">Om mijn plichten te <rhyme label="a" type="f" corresp="#s3:l1">betrachten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Heb misbruyckt u groot <rhyme label="b" type="m" corresp="#s3:l2">ghedult</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Och ! die over-schoonen <rhyme label="c" type="m">tijt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Ben ick vruchteloos al <rhyme label="c" type="m" corresp="#s3:l5">quijt</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Dat ick dese frisse <rhyme label="d" type="f">leden</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Tot u dienst niet gingh <rhyme label="d" type="f" corresp="#s3:l7">besteden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Heer, ghy hebt my doch gaen <rhyme label="a" type="f">sparen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Niet ontijdigh <rhyme label="b" type="m">wegh-geruckt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">In mijn onherboren <rhyme label="a" type="f" corresp="#s4:l1">Jaren</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Als een Bloem niet <rhyme label="b" type="m" corresp="#s4:l2">af-ghepluckt</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Maer verkooren, <rhyme label="c" type="m">op-gesocht</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Met u dierbaer bloedt <rhyme label="c" type="m" corresp="#s4:l5">ghekocht</rhyme>:</l>
        <l id="s4:l7" met="4" type="+-">En my waerdelijck <rhyme label="d" type="f">verheven</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Uyt den doodt ten eeuwigh <rhyme label="d" type="f" corresp="#s4:l7">leven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Heer, u Geest heeft my <rhyme label="a" type="f">gheraden</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Te volvoeren nu mijn <rhyme label="b" type="m">plicht</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En door veelderley <rhyme label="a" type="f" corresp="#s5:l1">weldaden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Meer en meer mijn Ziel <rhyme label="b" type="m" corresp="#s5:l2">verlicht</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Ghy hebt my met u <rhyme label="c" type="m">ver-eent</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Door den Doop, in u <rhyme label="c" type="m" corresp="#s5:l5">Gemeent</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Als een Zeghel, dat mijn <rhyme label="d" type="f">Sonden</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Suyver zyn door Christi <rhyme label="d" type="f" corresp="#s5:l7">Wonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Een seer over-groote <rhyme label="a" type="f">vreuchde</rhyme></l>
        <l id="s6:l2" met="4" type="+-">My uyt dit bedencken <rhyme label="b" type="m">sproot</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Ach ! mijn Ziel haer seer <rhyme label="a" type="f" corresp="#s6:l1">verheuchde</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Want ick nieuwe gunst <rhyme label="b" type="m" corresp="#s6:l2">ghenoot</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Mijn Geest vrolijck opwaerts <rhyme label="c" type="m">vloogh</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Met een vast Gheloof om <rhyme label="c" type="m" corresp="#s6:l5">hoogh</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Door de Hoop en Liefd' <rhyme label="d" type="f">ghedreven</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Om mijn Schepper lof te <rhyme label="d" type="f" corresp="#s6:l7">gheven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Waer me'e sal ick, Heer, <rhyme label="a" type="f">betalen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">U genaed' heel <rhyme label="b" type="m">onverdient</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dat ghy my dus gaet <rhyme label="a" type="f" corresp="#s7:l1">onthalen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">En bejegent als een <rhyme label="b" type="m" corresp="#s7:l2">Vrient</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Och ! mijn op-getoghen <rhyme label="c" type="m">sin</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Weet noch eynde noch <rhyme label="c" type="m" corresp="#s7:l5">begin</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Treckt u lof selfs uyt my, <rhyme label="d" type="f">Heere</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Soo bekomt ghy recht u <rhyme label="d" type="f" corresp="#s7:l7">eere</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">OCh ! hoe gaet mijn Ziel <rhyme label="a" type="f">verlangen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Om in Eerwaerde <rhyme label="b" type="m">Zael</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Tot haer spijse te <rhyme label="a" type="f" corresp="#s8:l1">ontfanghen</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Uwen Heyligh <rhyme label="b" type="m" corresp="#s8:l2">Avondtmael</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Och ! dat Heyligh Broodt en <rhyme label="c" type="m">Wijn</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Sal myn Ziel heel dienstigh <rhyme label="c" type="m" corresp="#s8:l5">zyn</rhyme></l>
        <l id="s8:l7" met="4" type="+-">Om 't Gheloove te <rhyme label="d" type="f">verstercken</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Danckbaerheydt in my te <rhyme label="d" type="f" corresp="#s8:l7">wercken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Mijn Geest is gantsch <rhyme label="a" type="f">op-getoghen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">In dit sinne-rijck <rhyme label="b" type="m">bedenck</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Want ghy stelt ons daer voor <rhyme label="a" type="f" corresp="#s9:l1">ooghen</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Een seer rijckelijck <rhyme label="b" type="m" corresp="#s9:l2">gheschenck</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Och ! dit is myn Ziel soo <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Dat myn Geest op-springhen <rhyme label="c" type="m" corresp="#s9:l5">moet</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Door dien vreucht gantsch <rhyme label="d" type="f">uyt-ghelaten</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">Als den Mos in dichte <rhyme label="d" type="f" corresp="#s9:l7">vaten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Want het bloedt uyt Christi <rhyme label="a" type="f">wonden</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Uyt-ghestort om onsen <rhyme label="b" type="m">schult</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Is den Medicijn <rhyme label="a" type="f" corresp="#s10:l1">bevonden</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Die mijn Ziel met vreucht <rhyme label="b" type="m" corresp="#s10:l2">vervult</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Daerom ick in mijn <rhyme label="c" type="m">ghemoet</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Voel den voor-smaeck van het <rhyme label="c" type="m" corresp="#s10:l5">soet</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Dat na desen droeven <rhyme label="d" type="f">leven</rhyme></l>
        <l id="s10:l8" met="4" type="+-">Ons den goeden Godt sal <rhyme label="d" type="f" corresp="#s10:l7">gheven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Laet u Geest, Heer, by my <rhyme label="a" type="f">blijven</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Op dat hy my troost en <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Wilt voort uyt myn herte <rhyme label="a" type="f" corresp="#s11:l1">drijven</rhyme></l>
        <l id="s11:l4" met="4" type="+-">'t Quade dat daer noch <rhyme label="b" type="m" corresp="#s11:l2">regeert</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Dat gheen lusten mijnder <rhyme label="c" type="m">Jeucht</rhyme></l>
        <l id="s11:l6" met="4" type="+-">My berooven desen <rhyme label="c" type="m" corresp="#s11:l5">vreucht</rhyme>,</l>
        <l id="s11:l7" met="4" type="+-">Dien ick nu ghevoel van <rhyme label="d" type="f">binnen</rhyme></l>
        <l id="s11:l8" met="4" type="+-">Door vernieuwingh' van mijn <rhyme label="d" type="f" corresp="#s11:l7">sinnen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Laet oock dien die my <rhyme label="a" type="f">benijden</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">En nu last'ren <rhyme label="b" type="m">over-al</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Haer tot gheender tijdt <rhyme label="a" type="f" corresp="#s12:l1">verblijden</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Over my door een'ghen <rhyme label="b" type="m" corresp="#s12:l2">val</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Dus u Dienstknecht, trouwe <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Wel bewaert tot uwer <rhyme label="c" type="m" corresp="#s12:l5">eer</rhyme>.</l>
        <l id="s12:l7" met="4" type="+-">Laet u Licht, Heer, in my <rhyme label="d" type="f">lichten</rhyme></l>
        <l id="s12:l8" met="4" type="+-">Om mijn Naesten steeds te <rhyme label="d" type="f" corresp="#s12:l7">stichten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Lof zy Godt den Vader <rhyme label="a" type="f">machtigh</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Die sijn lieve Sone <rhyme label="b" type="m">gheeft</rhyme>.</l>
        <l id="s13:l3" met="4" type="+-">Lof zy Godt den Sone <rhyme label="a" type="f" corresp="#s13:l1">krachtigh</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Die mijn Ziel ontkluystert <rhyme label="b" type="m" corresp="#s13:l2">heeft</rhyme>.</l>
        <l id="s13:l5" met="4" type="+-">Lof zy Godt den heyl'ghen <rhyme label="c" type="m">Gheest</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Die ons heylight en <rhyme label="c" type="m" corresp="#s13:l5">gheneest</rhyme>.</l>
        <l id="s13:l7" met="4" type="+-">Drie Persoonen, Een in <rhyme label="d" type="f">Wesen</rhyme>,</l>
        <l id="s13:l8" met="4" type="+-">Eeuwigh zy u Naem <rhyme label="d" type="f" corresp="#s13:l7">ghepresen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
