    <melody>Een plantsoen schoon boven alle</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SNoode wereldt, Satans <rhyme label="a" type="f">boele</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die u tooyt en mooyt <rhyme label="b" type="m">altijdt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Op dat elck van u <rhyme label="a" type="f" corresp="#s1:l1">gevoele</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Dat gy schoon en lieflijck <rhyme label="b" type="m" corresp="#s1:l2">zijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Foey, blancketsel ist al t' <rhyme label="a" type="f">samen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Alsmen 't van na by <rhyme label="b" type="m">besiet</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Had gy eer gy most u <rhyme label="a" type="f" corresp="#s2:l1">schamen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die u kendt en koopt u <rhyme label="b" type="m" corresp="#s2:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Gout daer van gy schijnt te <rhyme label="a" type="f">blincken</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Is by 't licht maer klater <rhyme label="b" type="m">Gout</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">U Perfuym ruyckt yeder <rhyme label="a" type="f" corresp="#s3:l1">stinckend'</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die niet selfs de neus <rhyme label="b" type="m" corresp="#s3:l2">toe-hout</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Zijn all' valsche <rhyme label="a" type="f">Diamenten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Die gy aen u vingers <rhyme label="b" type="m">steeckt</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">'t Is bedrogh aen alle <rhyme label="a" type="f" corresp="#s4:l1">kanten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Wat gy van u schatten <rhyme label="b" type="m" corresp="#s4:l2">spreeckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Aerdtsche wijsheydt durft gy <rhyme label="a" type="f">roemen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Prijsen tot den Hemel <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">d' Alderwijste dorste 't <rhyme label="a" type="f" corresp="#s5:l1">noemen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Ydelheydt, en wasse 't <rhyme label="b" type="m" corresp="#s5:l2">moe</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'t Gaet den wijsen als den <rhyme label="a" type="f">dwasen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">d' Een die sterft als d' ander <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Men vergeet de kloecke <rhyme label="a" type="f" corresp="#s6:l1">basen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Even als den slechten <rhyme label="b" type="m" corresp="#s6:l2">bloedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wellust durft gy schoon <rhyme label="a" type="f">voor-leggen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Als een dronck van 't beste <rhyme label="b" type="m">vat</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Salomon die placht te <rhyme label="a" type="f" corresp="#s7:l1">seggen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Dat hy s' was tot walgens <rhyme label="b" type="m" corresp="#s7:l2">sat</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Wie kan sulcken dranck <rhyme label="a" type="f">bewaren</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Die van selfs in 't vat <rhyme label="b" type="m">versuurt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Wellust onlust placht te <rhyme label="a" type="f" corresp="#s8:l1">baren</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Alsse wat te lange <rhyme label="b" type="m" corresp="#s8:l2">duurt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Staet en hoogheydt durft gy <rhyme label="a" type="f">zweeren</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">'t Zijn als pluymen op den <rhyme label="b" type="m">hoet</rhyme>:</l>
        <l id="s9:l3" met="4" type="+-">Maer 't zijn lasten en geen <rhyme label="a" type="f" corresp="#s9:l1">veeren</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Op een trouw en vroom <rhyme label="b" type="m" corresp="#s9:l2">gemoet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Slaept een Heer op sachte <rhyme label="a" type="f">pluymen</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Moeyt' en angst staen voor sijn <rhyme label="b" type="m">bedt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">En die plaets sy selden <rhyme label="a" type="f" corresp="#s10:l1">ruymen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Als op schildtwacht daer <rhyme label="b" type="m" corresp="#s10:l2">geset</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Wist een mensche wat al <rhyme label="a" type="f">sorgens</rhyme></l>
        <l id="s11:l2" met="4" type="+-">In een Kroon is in <rhyme label="b" type="m">gewrocht</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Hy behieltse niet tot 's <rhyme label="a" type="f" corresp="#s11:l1">morgens</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">als s' hem 's avondts wiert <rhyme label="b" type="m" corresp="#s11:l2">gebrocht</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Siet men voorts u ander <rhyme label="a" type="f">dingen</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">'t Puyckjen van u <rhyme label="b" type="m">Poppe-kraem</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">'t Zijn gecierde <rhyme label="a" type="f" corresp="#s12:l1">beuselingen</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Slechts den Kind'ren <rhyme label="b" type="m" corresp="#s12:l2">aengenaem</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Gy verheft des Rijckdoms <rhyme label="a" type="f">waerde</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Of die waer het hooghste <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">'t Gout en is maer blinckend' <rhyme label="a" type="f" corresp="#s13:l1">aerde</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Dat op d' aerd oock blijven <rhyme label="b" type="m" corresp="#s13:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Rijckdom is geen trouw <rhyme label="a" type="f">geselle</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Sy en volght niet in de <rhyme label="b" type="m">doodt</rhyme>;</l>
        <l id="s14:l3" met="4" type="+-">Soo en ontrouw' dats' in de <rhyme label="a" type="f" corresp="#s14:l1">Helle</rhyme></l>
        <l id="s14:l4" met="4" type="+-">Dickwils haer besitter <rhyme label="b" type="m" corresp="#s14:l2">stoot</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Jonge luyden durft g' <rhyme label="a" type="f">aenprijsen</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Het misbruycken van haer <rhyme label="b" type="m">Jeught</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Datse niet te vroegh en <rhyme label="a" type="f" corresp="#s15:l1">grijsen</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Door 't betrachten van de <rhyme label="b" type="m" corresp="#s15:l2">deught</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">O vervloeckte <rhyme label="a" type="f">Toveresse</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Die soo menigh Mensch <rhyme label="b" type="m">bederft</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Die de valsheydt van u <rhyme label="a" type="f" corresp="#s16:l1">lesse</rhyme></l>
        <l id="s16:l4" met="4" type="+-">Niet en merckt, voor dat hy <rhyme label="b" type="m" corresp="#s16:l2">sterft</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Jonckheydt is soo brosch en <rhyme label="a" type="f">teeder</rhyme></l>
        <l id="s17:l2" met="4" type="+-">Als een op-geloocken <rhyme label="b" type="m">bloem</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">Die vervalt door 't minst <rhyme label="a" type="f" corresp="#s17:l1">onweder</rhyme>,</l>
        <l id="s17:l4" met="4" type="+-">En verliest al haren <rhyme label="b" type="m" corresp="#s17:l2">roem</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Schoone luyden leert gy <rhyme label="a" type="f">prijcken</rhyme>,</l>
        <l id="s18:l2" met="4" type="+-">Met dit fraeyen <rhyme label="b" type="m">Lemen-huys</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">En het selve wel <rhyme label="a" type="f" corresp="#s18:l1">bestrijcken</rhyme></l>
        <l id="s18:l4" met="4" type="+-">Met u toe-gemaeckt <rhyme label="b" type="m" corresp="#s18:l2">Ceruys</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Schoonheydt, gifte der <rhyme label="a" type="f">natuure</rhyme>,</l>
        <l id="s19:l2" met="4" type="+-">Is te wonder haest <rhyme label="b" type="m">geraeckt</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">En noch is van minder <rhyme label="a" type="f" corresp="#s19:l1">duure</rhyme>,</l>
        <l id="s19:l4" met="4" type="+-">Die uw' Konst en verwe <rhyme label="b" type="m" corresp="#s19:l2">maeckt</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Kinder-pockjens konnen <rhyme label="a" type="f">schenden</rhyme></l>
        <l id="s20:l2" met="4" type="+-">'t Aldersoetst' en schoonst' <rhyme label="b" type="m">aenschijn</rhyme>:</l>
        <l id="s20:l3" met="4" type="+-">'k Wensch dat schoone Menschen <rhyme label="a" type="f" corresp="#s20:l1">kenden</rhyme>,</l>
        <l id="s20:l4" met="4" type="+-">Wat sy dragen voor <rhyme label="b" type="m" corresp="#s20:l2">fenijn</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Daers' haer selven meed' <rhyme label="a" type="f">vergeven</rhyme>,</l>
        <l id="s21:l2" met="4" type="+-">En een ander <rhyme label="b" type="m">aldermeest</rhyme>:</l>
        <l id="s21:l3" met="4" type="+-">Meenigh Maeght waer kuys <rhyme label="a" type="f" corresp="#s21:l1">gebleven</rhyme>,</l>
        <l id="s21:l4" met="4" type="+-">Waerse niet soo schoon <rhyme label="b" type="m" corresp="#s21:l2">geweest</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Luyden die van meerder <rhyme label="a" type="f">soorte</rhyme></l>
        <l id="s22:l2" met="4" type="+-">Zijn als de gemeene <rhyme label="b" type="m">man</rhyme>,</l>
        <l id="s22:l3" met="4" type="+-">Stelt gy voor haer eel <rhyme label="a" type="f" corresp="#s22:l1">geboorte</rhyme>,</l>
        <l id="s22:l4" met="4" type="+-">Dat het hert haer zwell' daer <rhyme label="b" type="m" corresp="#s22:l2">van</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="+-">Maer 't is ydelheydt te <rhyme label="a" type="f">pralen</rhyme></l>
        <l id="s23:l2" met="4" type="+-">Met quartieren en <rhyme label="b" type="m">geslacht</rhyme>,</l>
        <l id="s23:l3" met="4" type="+-">Oude wapens voort te <rhyme label="a" type="f" corresp="#s23:l1">halen</rhyme>,</l>
        <l id="s23:l4" met="4" type="+-">Alsmen d' edel deught <rhyme label="b" type="m" corresp="#s23:l2">veracht</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="+-">Cham was een van Noachs <rhyme label="a" type="f">soonen</rhyme>,</l>
        <l id="s24:l2" met="4" type="+-">Die de wereldt hadd' <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s24:l3" met="4" type="+-">Doe hy dost sijn Vader <rhyme label="a" type="f" corresp="#s24:l1">hoonen</rhyme>,</l>
        <l id="s24:l4" met="4" type="+-">Ginck den knecht der knechten <rhyme label="b" type="m" corresp="#s24:l2">heen</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="+-">Dit zijn meest de schoone <rhyme label="a" type="f">nieten</rhyme>,</l>
        <l id="s25:l2" met="4" type="+-">Die gy soo te proncke <rhyme label="b" type="m">stelt</rhyme>,</l>
        <l id="s25:l3" met="4" type="+-">'k Wilse niet te geef <rhyme label="a" type="f" corresp="#s25:l1">genieten</rhyme>,</l>
        <l id="s25:l4" met="4" type="+-">Dies my met geen koopen <rhyme label="b" type="m" corresp="#s25:l2">quelt</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="+-">Gy en sult my niet <rhyme label="a" type="f">verkloecken</rhyme></l>
        <l id="s26:l2" met="4" type="+-">Met uw' opgesmockte <rhyme label="b" type="m">waer</rhyme>;</l>
        <l id="s26:l3" met="4" type="+-">Wilt ghy and're koopers <rhyme label="a" type="f" corresp="#s26:l1">soecken</rhyme>,</l>
        <l id="s26:l4" met="4" type="+-">'k Wensch dat Godt die oock <rhyme label="b" type="m" corresp="#s26:l2">bewaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
