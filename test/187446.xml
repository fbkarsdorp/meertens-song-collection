  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Zing, Christen! zing op blijden <rhyme label="a" type="m">toon</rhyme>! -</l>
        <l id="s1:l2" met="4" type="-+">messia is, van 's Vaders <rhyme label="a" type="m" corresp="#s1:l1">throon</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Op aerde <rhyme label="b" type="f">neêrgekomen</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Hij, die den dood des Zondaers <rhyme label="c" type="m">haet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Hij heeft den last van al ons <rhyme label="c" type="m" corresp="#s1:l4">kwaed</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met vreugd, op zich <rhyme label="b" type="f" corresp="#s1:l3">genomen</rhyme>. -</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe groot is Uw <rhyme label="a" type="m">goedgunstigheid</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">ô God! ons was de vloek <rhyme label="a" type="m" corresp="#s2:l1">bereid</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wij lagen hulp'loos <rhyme label="b" type="f">neder</rhyme>. -</l>
        <l id="s2:l4" met="4" type="-+">Maer nu, - zwicht, vrees voor 't sterven, <rhyme label="c" type="m">zwicht</rhyme>! -</l>
        <l id="s2:l5" met="4" type="-+">Daer daelt een strael van 't zaligst <rhyme label="c" type="m" corresp="#s2:l4">licht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En geeft ons 't leven <rhyme label="b" type="f" corresp="#s2:l3">weder</rhyme>. -</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wees vrolijk! - Onze God en <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Zag, in genade, op 't menschdom <rhyme label="a" type="m" corresp="#s3:l1">neêr</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In zonden diep <rhyme label="b" type="f">gezonken</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">En Hij, de God der Liefde, <rhyme label="c" type="m">Hij</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hij heeft, uit enkel <rhyme label="c" type="m" corresp="#s3:l4">medelijê</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ons Zijnen Zoon <rhyme label="b" type="f" corresp="#s3:l3">geschonken</rhyme>. -</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wees vrolijk, Christen! - 't Leed <rhyme label="a" type="m">verdwijnt</rhyme>! -</l>
        <l id="s4:l2" met="4" type="-+">Nu onze God in 't vleesch <rhyme label="a" type="m" corresp="#s4:l1">verschijnt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Nu voegt geen angstig <rhyme label="b" type="f">vrezen</rhyme>. -</l>
        <l id="s4:l4" met="4" type="-+">Hij toont ons 's Vaders liefd'rijk <rhyme label="c" type="m">hart</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Hij heelt de felste <rhyme label="c" type="m" corresp="#s4:l4">boezemsmart</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Wil onze Broeder <rhyme label="b" type="f" corresp="#s4:l3">wezen</rhyme>. -</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hadt ons de Midd'laer niet <rhyme label="a" type="m">bezocht</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Niet, door Zijn komst in 't vleesch, <rhyme label="a" type="m" corresp="#s5:l1">gekocht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wij, slaven van de <rhyme label="b" type="f">zonden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Afzwervers van het <rhyme label="c" type="m">deugden-pad</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Wij hadden nooit de <rhyme label="c" type="m" corresp="#s5:l4">Vrede-stad</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Den weg des Heils, <rhyme label="b" type="f" corresp="#s5:l3">gevonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer nu is 't duistere <rhyme label="a" type="m">opgeklaerd</rhyme>;</l>
        <l id="s6:l2" met="4" type="-+">De mensch leeft niet alleen voor de <rhyme label="a" type="m" corresp="#s6:l1">aerd'</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Neen; hij zal eeuwig <rhyme label="b" type="f">leven</rhyme>. -</l>
        <l id="s6:l4" met="4" type="-+">'t Is uit met 's Satans <rhyme label="c" type="m">heerschappij</rhyme>;</l>
        <l id="s6:l5" met="4" type="-+">'t Geloof in jesus maekt ons <rhyme label="c" type="m" corresp="#s6:l4">vrij</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Geen sterven doet ons <rhyme label="b" type="f" corresp="#s6:l3">beven</rhyme>. -</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De zuiv're Godsdienst, lang <rhyme label="a" type="m">bespot</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Is, luist'rijk, met den Zoon van <rhyme label="a" type="m" corresp="#s7:l1">God</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Op aerde <rhyme label="b" type="f">neêrgestegen</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Straks predikt Goëls eigen <rhyme label="c" type="m">mond</rhyme></l>
        <l id="s7:l5" met="4" type="-+">De leer van 't zalig <rhyme label="c" type="m" corresp="#s7:l4">Vreêverbond</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Genade, Heil en <rhyme label="b" type="f" corresp="#s7:l3">Zegen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Het nu ontsloten <rhyme label="a" type="m">Testament</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Maekt ieder 's Hoogsten wil <rhyme label="a" type="m" corresp="#s8:l1">bekend</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Kan oog en hart <rhyme label="b" type="f">verlichten</rhyme>;</l>
        <l id="s8:l4" met="4" type="-+">Het leert den sterfling: God <rhyme label="c" type="m">regeert</rhyme>! -</l>
        <l id="s8:l5" met="4" type="-+">Beef Zondaer! zo ge u niet <rhyme label="c" type="m" corresp="#s8:l4">bekeerd</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Wen jesus eens zal <rhyme label="b" type="f" corresp="#s8:l3">richten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Rampzalig hij, die naer dit <rhyme label="a" type="m">Woord</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Niet dankbaer, heilbegerig <rhyme label="a" type="m" corresp="#s9:l1">hoort</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Die wel dien troost wil <rhyme label="b" type="f">derven</rhyme>! -</l>
        <l id="s9:l4" met="4" type="-+">Hij, die dit Heillicht <rhyme label="c" type="m">wederstreeft</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Hardnekkig in zijn zonden <rhyme label="c" type="m" corresp="#s9:l4">leeft</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Zal eeuwig, eeuwig <rhyme label="b" type="f" corresp="#s9:l3">sterven</rhyme>. -</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Maer zalig, driemael zalig, <rhyme label="a" type="m">weêr</rhyme></l>
        <l id="s10:l2" met="4" type="-+">'t Geloof aen de <rhyme label="a" type="m" corresp="#s10:l1">Euangelie-leer</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">'t Betrachten van die <rhyme label="b" type="f">plichten</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Die wij, naer 't heilig, wijs <rhyme label="c" type="m">Gebod</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Tot 's naestens heil, tot eer van <rhyme label="c" type="m" corresp="#s10:l4">God</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Met 's Geestes hulp, <rhyme label="b" type="f" corresp="#s10:l3">verrichten</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">ô jesus, waren we U <rhyme label="a" type="m">gelijk</rhyme>! -</l>
        <l id="s11:l2" met="4" type="-+">Gij waert bij God, en Godlijk <rhyme label="a" type="m" corresp="#s11:l1">rijk</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Onëindig hoog <rhyme label="b" type="f">verheven</rhyme>;</l>
        <l id="s11:l4" met="4" type="-+">En daeldet van den throon der <rhyme label="c" type="m">Eer</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">In armoede, op deze aerde <rhyme label="c" type="m" corresp="#s11:l4">neêr</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Om ons Uw' schat te <rhyme label="b" type="f" corresp="#s11:l3">geven</rhyme>! -</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En, kwaemt Ge, ô 's Vaders eigen <rhyme label="a" type="m">Zoon</rhyme>!</l>
        <l id="s12:l2" met="4" type="-+">ô Vorst der Eng'len! van Uw' <rhyme label="a" type="m" corresp="#s12:l1">throon</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Als Broeder, in ons <rhyme label="b" type="f">midden</rhyme>:</l>
        <l id="s12:l4" met="4" type="-+">Hoe ligt moet onze moeite en <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Ons dan voor onze Broeders <rhyme label="c" type="m" corresp="#s12:l4">zijn</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Die U, met ons, <rhyme label="b" type="f" corresp="#s12:l3">aenbidden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">ô jesus christus! maek ons <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Eén Lichaem en een Geest met <rhyme label="a" type="m" corresp="#s13:l1">U</rhyme>:</l>
        <l id="s13:l3" met="3" type="-+">Werd Gij in ons <rhyme label="b" type="f">geboren</rhyme>! -</l>
        <l id="s13:l4" met="4" type="-+">Wij, onbekwaem tot eenig <rhyme label="c" type="m">goed</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Zo Ge ons niet reinigt door Uw <rhyme label="c" type="m" corresp="#s13:l4">bloed</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Wij gaen gewis <rhyme label="b" type="f" corresp="#s13:l3">verloren</rhyme>! -</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Ontfermer, - Midd'laer, liefd'rijk <rhyme label="a" type="m">God</rhyme>! -</l>
        <l id="s14:l2" met="4" type="-+">Leer ons, vertrouwend, weg en <rhyme label="a" type="m" corresp="#s14:l1">lot</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">In Uwe hand <rhyme label="b" type="f">bevelen</rhyme>:</l>
        <l id="s14:l4" met="4" type="-+">Doe, door dit treurdal <rhyme label="c" type="m">heengeleid</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Ons eenmael in Uw' <rhyme label="c" type="m" corresp="#s14:l4">heerlijkheid</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Bij Uwen Vader, <rhyme label="b" type="f" corresp="#s14:l3">deelen</rhyme>! -</l>
      </lg>
    </lg>
  </text>
</song>
