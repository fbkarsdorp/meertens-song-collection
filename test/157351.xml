    <melody>Zie mens en hef op uw ogen</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GOdts goedtheyt is <rhyme label="a" type="f">genegen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Tot onse <rhyme label="b" type="m">Saligheyt</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Daerom zijn al zijn <rhyme label="a" type="f" corresp="#s1:l1">wegen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Liefd', en <rhyme label="b" type="m" corresp="#s1:l2">Bermhertigheyt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Siet hem aen 't Kruys <rhyme label="c" type="f">verheven</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Een Moordenaer, Van sonden <rhyme label="d" type="m">swaer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Sijn Hemelrijcke <rhyme label="c" type="f" corresp="#s1:l5">geven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy badt met luttel <rhyme label="a" type="f">reden</rhyme>:</l>
        <l id="s2:l2" met="3" type="-+">Heer mijnder dan <rhyme label="b" type="m">gedenckt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als g' in uw' Rijck sult <rhyme label="a" type="f" corresp="#s2:l1">treden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">'t Welck Jesus stracks hem <rhyme label="b" type="m" corresp="#s2:l2">schenckt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En seght: ghy sult noch <rhyme label="c" type="f">heden</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Oock zijn met my, Voor eeuwig <rhyme label="d" type="m">bly'</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">In 't Paradijs der <rhyme label="c" type="f" corresp="#s2:l5">Vreden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Schenckt Godt de <rhyme label="a" type="f">Moordenaeren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Soo mildelijck sijn <rhyme label="b" type="m">Rijck</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Wan-hoopt niet, o <rhyme label="a" type="f" corresp="#s3:l1">Sondaeren</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Gaet met berouw <rhyme label="b" type="m" corresp="#s3:l2">gelijck</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Voor sijn Throon der <rhyme label="c" type="f">genaeden</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Bidt maer een woort, En hy sal <rhyme label="d" type="m">voort</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Vergeven uw' <rhyme label="c" type="f" corresp="#s3:l5">misdaeden</rhyme>.</l>
      </lg>
    </lg>
  </text>
