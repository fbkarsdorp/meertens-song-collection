    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Iudith, aldersterckste <rhyme label="a" type="m">vrouw</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wie isser die u vrome <rhyme label="b" type="f">daden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Nae rechte weerde, loven <rhyme label="a" type="m" corresp="#s1:l1">sou</rhyme>?</l>
        <l id="s1:l4" met="4" type="-+">Van u ghedaen door Godts <rhyme label="b" type="f" corresp="#s1:l2">ghenaden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Betulien in grooten <rhyme label="a" type="m">noodt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Door Holofernes was <rhyme label="b" type="f">ghevallen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Want daer oock met d' aenstaende <rhyme label="a" type="m" corresp="#s2:l1">doodt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Den dorst nu dreyghde seer u <rhyme label="b" type="f" corresp="#s2:l2">allen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'t Gheclagh der borgh'ren was doen <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Waer door Ozias oock <rhyme label="b" type="f">ghedreven</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Heeft beloeft de stadt, dies <rhyme label="a" type="m" corresp="#s3:l1">noodt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Den sesden dagh over te <rhyme label="b" type="f" corresp="#s3:l2">gheven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Aldaer hielt ghy doen uwen <rhyme label="a" type="m">woon</rhyme></l>
        <l id="s4:l2" met="4" type="-+">In 't sop van 't huys, weduw' <rhyme label="b" type="f">ghelaten</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Meer als dry jaren, al te <rhyme label="a" type="m" corresp="#s4:l1">schoon</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Van landt en vee rijck boven <rhyme label="b" type="f" corresp="#s4:l2">maten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghy vaste daer bykans 't heel <rhyme label="a" type="m">jaer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En op 't teer lichaem alle <rhyme label="b" type="f">daghen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Wert oock van u een kleet van <rhyme label="a" type="m" corresp="#s5:l1">haer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Tot temmingh van het vleesch, <rhyme label="b" type="f" corresp="#s5:l2">ghedraghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy dan Oziam hebt doen <rhyme label="a" type="m">seer</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Bestraft om het te kleyn <rhyme label="b" type="f">betrouwen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ghehadt dat hy had op den <rhyme label="a" type="m" corresp="#s6:l1">Heer</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Om langher tijdt de plaets te <rhyme label="b" type="f" corresp="#s6:l2">houwen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En hebt u opset hem <rhyme label="a" type="m">verclaert</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Van uyt de Stadt u te <rhyme label="b" type="f">begheven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die, op dat sy sou zijn <rhyme label="a" type="m" corresp="#s7:l1">bewaert</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Ten besten gheven wout u <rhyme label="b" type="f" corresp="#s7:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gh' ebt u gheciert op 't <rhyme label="a" type="m">alderbest</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ghedeckt met all' u fraeitste <rhyme label="b" type="f">cleeren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Maer u de schoonheydt is <rhyme label="a" type="m" corresp="#s8:l1">gheweest</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Verdubbelt van den Heer der <rhyme label="b" type="f" corresp="#s8:l2">heeren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dus zijt ghy met 'nen cloecken <rhyme label="a" type="m">moedt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Nae 's vyandts legher toe <rhyme label="b" type="f">ghetreden</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Met vaste hop' op Godts <rhyme label="a" type="m" corresp="#s9:l1">behoedt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Ghewapent eerst met goei <rhyme label="b" type="f" corresp="#s9:l2">ghebeden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Voor Holofernes stracks <rhyme label="a" type="m">ghebrocht</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Hebt ghy in liefde hem doen <rhyme label="b" type="f">branden</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die oock 't gheniet terstonts <rhyme label="a" type="m" corresp="#s10:l1">versocht</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Van u, die hy had in sijn <rhyme label="b" type="f" corresp="#s10:l2">handen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Doen gh' in sijn camer zijt <rhyme label="a" type="m">gheleyt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">En hy was droncken, met <rhyme label="b" type="f">betrouwen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Hebdy, met cort ghebedt <rhyme label="a" type="m" corresp="#s11:l1">bereyt</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Hem in den slaep 't hooft af <rhyme label="b" type="f" corresp="#s11:l2">ghehouwen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Den selven nacht ghekeert nae 't <rhyme label="a" type="m">stadt</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Deet ghy u Abra 't hooft me <rhyme label="b" type="f">draghen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En g'hebt aen de borghers <rhyme label="a" type="m" corresp="#s12:l1">dat</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Ghethoont, die 't seer verheught <rhyme label="b" type="f" corresp="#s12:l2">aensaeghen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Nae uwen raet die vielen <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Om schrick den vyandt aen te <rhyme label="b" type="f">jaghen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Die hen gheworden is tot <rhyme label="a" type="m" corresp="#s13:l1">buyt</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">En is met menichten <rhyme label="b" type="f" corresp="#s13:l2">verslaghen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">O glorie van <rhyme label="a" type="m">Ierusalem</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">O vreught van Israel, wy <rhyme label="b" type="f">loven</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Den Heer in u met blyde <rhyme label="a" type="m" corresp="#s14:l1">stem</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Die ghy nu claer aenschouwt daer <rhyme label="b" type="f" corresp="#s14:l2">boven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
