<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>156724</id>
    <date>
      <year-start>1700</year-start>
      <year-end>1700</year-end>
    </date>
    <tags/>
    <melody>Gelijk de beekjes vloeien</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Gelijke de beekjes <rhyme label="a" type="f">vloeijen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Met een standvastige <rhyme label="b" type="m">vloed</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo zal de Min steeds <rhyme label="a" type="f" corresp="#s1:l1">groeijen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Binnen in mijn <rhyme label="b" type="m" corresp="#s1:l2">gemoet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ach, Ach, hoe soet zijn de <rhyme label="c" type="f">boeijen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die mijn de liefde <rhyme label="b" type="m" corresp="#s1:l2">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wel waerom soo soud ik dan <rhyme label="a" type="f">vlugten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Voor de geen die ik <rhyme label="b" type="m">bemin</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat sou mijn jonk hart doen <rhyme label="a" type="f" corresp="#s2:l1">sugten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Daer ik geen troost en <rhyme label="b" type="m" corresp="#s2:l2">verwin</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Ach, ach wat zijn dat <rhyme label="c" type="f">genugten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Niet is so soet als de <rhyme label="b" type="m" corresp="#s2:l2">min</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Filis in 't ruysen der <rhyme label="a" type="f">blaederen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Daer een kleyn beekje door <rhyme label="b" type="m">vloeyt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Laet ons te saemen <rhyme label="a" type="f" corresp="#s3:l1">vergaderen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daer het kruyd weeldrig <rhyme label="b" type="m" corresp="#s3:l2">groeyt</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Ach, ach, komt laet ons <rhyme label="c" type="f">paderen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daer het gras weeldrig <rhyme label="b" type="m" corresp="#s3:l2">groeyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
