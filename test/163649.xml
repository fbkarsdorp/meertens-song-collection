  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ik voel mijn hert <rhyme label="a" type="f">verwinnen</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Van de <rhyme label="b" type="m">Minne-God</rhyme>.</l>
        <l id="s1:l3" met="2" type="-+">Schoon ik het <rhyme label="a" type="f" corresp="#s1:l1">minnen</rhyme></l>
        <l id="s1:l4" met="3" type="+-">En sijn kragt <rhyme label="b" type="m" corresp="#s1:l2">bespot</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Mijn boesem blaakt van sijne <rhyme label="c" type="m">gloed</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ja, 'k voel dat hy mijn <rhyme label="a" type="f" corresp="#s1:l1">zinnen</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Gants verkeren <rhyme label="c" type="m" corresp="#s1:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wel aan, ik sal niet <rhyme label="a" type="f">weerstreven</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Syn gevreesd <rhyme label="b" type="m">geweld</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Maar my <rhyme label="a" type="f" corresp="#s2:l1">begeven</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Na hy wetten <rhyme label="b" type="m" corresp="#s2:l2">steld</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En nu ik blaak van zijne <rhyme label="c" type="m">schigt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wil ik met Kloris <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Die mijn Ziel <rhyme label="c" type="m" corresp="#s2:l5">verpligt</rhyme>.</l>
      </lg>
    </lg>
