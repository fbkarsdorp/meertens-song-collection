  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Potiphars onkuysse <rhyme label="a" type="m">Vrou</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Meend' Joseph te <rhyme label="b" type="f">bevlecken</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Met vuyle lusten, ende <rhyme label="a" type="m" corresp="#s1:l1">wou</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Hem met gewelt <rhyme label="b" type="f" corresp="#s1:l2">aentrecken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo heeft 's hem by sijn Rock <rhyme label="a" type="m">gevaet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Om 't Lichaem voort te <rhyme label="b" type="f">vatten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer hy liet slippen het <rhyme label="a" type="m" corresp="#s2:l1">gewaet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En liet voort 't Lijf wegh <rhyme label="b" type="f" corresp="#s2:l2">spatten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer was haer aenslagh gants te <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zy mist't geen zy <rhyme label="b" type="f">begeerde</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En 't geen zy in haer handen <rhyme label="a" type="m" corresp="#s3:l1">siet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Is haer van geender <rhyme label="b" type="f" corresp="#s3:l2">weerden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Doodt grijpt met haer stalen <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Het Lijf van Godts <rhyme label="b" type="f">beminden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Om in der aerden <rhyme label="a" type="m" corresp="#s4:l1">in-gewant</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Geheel haer te <rhyme label="b" type="f" corresp="#s4:l2">verslinden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer als zy schoon Godts kind'ren <rhyme label="a" type="m">vast</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Heeft in haer strick <rhyme label="b" type="f">gebonden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Is maer het buytenste <rhyme label="a" type="m" corresp="#s5:l1">verrast</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">De Ziel blijft <rhyme label="b" type="f" corresp="#s5:l2">ongeschonden</rhyme>:</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En overtreft ver Josephs <rhyme label="a" type="m">Lot</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die daer op word' <rhyme label="b" type="f">gevangen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Maer zy neemt op-waerts tot haer <rhyme label="a" type="m" corresp="#s6:l1">Godt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Na d' Hemel hare <rhyme label="b" type="f" corresp="#s6:l2">ganghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
