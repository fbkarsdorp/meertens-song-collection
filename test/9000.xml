    <melody>Waarom bedroeft gij u mijn hart</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAerom bedroeft ghy u mijn <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Becommert u en draget <rhyme label="a" type="m" corresp="#s1:l1">smert</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Maer om dat tijtlijck <rhyme label="b" type="m">goet</rhyme>?</l>
        <l id="s1:l4" met="4" type="-+">Vertrout ghy uwen Godt die <rhyme label="c" type="m">leeft</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En alle ding geschapen <rhyme label="c" type="m" corresp="#s1:l4">heeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy can en wil dy laten <rhyme label="a" type="m">nicht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hy weet wel, wat dat dy <rhyme label="a" type="m" corresp="#s2:l1">gebricht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hemel end eerdt is <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Mijn Vader en mijn Heere <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die my bestaet in aller <rhyme label="c" type="m" corresp="#s2:l4">noot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wijl' ghy mijn Godt en Vader <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dijn kint sult ghy verlaten <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ghy Vaderlijcke <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ick ben een armen Aerden <rhyme label="c" type="m">kluyt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Op Aerden is mijn troost gants <rhyme label="c" type="m" corresp="#s3:l4">uyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die Rijck' verlaet hem op zijn <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Maer ick wil u trouwen, mijn <rhyme label="a" type="m" corresp="#s4:l1">Godt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Of ick g'lijck word' <rhyme label="b" type="m">veracht</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">So weet ick, en geloove <rhyme label="c" type="m">(siet</rhyme>)</l>
        <l id="s4:l5" met="4" type="-+">Wie dy vertrout, dien mangelt <rhyme label="c" type="m" corresp="#s4:l4">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">HELIAM wie geneerde, <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Doen het so lang regende <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">In een so dueren <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Een Wed'we uyt Sodomer <rhyme label="c" type="m">Lant</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Tot welck hy van Godt werd' <rhyme label="c" type="m" corresp="#s5:l4">gesant</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy lach onder d'Wacholder <rhyme label="a" type="m">Boom</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Daer quam d'Enghel van Hemel <rhyme label="a" type="m" corresp="#s6:l1">vroom</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Bracht hem spijs ende <rhyme label="b" type="m">dranck</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Hy ginck gaer eenen wijden <rhyme label="c" type="m">ganck</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Tot aen den berch Horeb seer <rhyme label="c" type="m" corresp="#s6:l4">lanck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den Daniel Godt niet <rhyme label="a" type="m">vergat</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Doen hy onder den Leeuwen <rhyme label="a" type="m" corresp="#s7:l1">sat</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Sijn Engel sant hy <rhyme label="b" type="m">heen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En liet hem spijse brengen <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Door Habacuc syn dienaer <rhyme label="c" type="m" corresp="#s7:l4">vroet</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Joseph in Egypt'n vercost <rhyme label="a" type="m">wart</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Van Pharao ghevangen <rhyme label="a" type="m" corresp="#s8:l1">hart</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Om zijn <rhyme label="b" type="m">Godtvruchticheyt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Godt maeckt' hem tot een grooten <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Dat hy Vader en Broeders <rhyme label="c" type="m" corresp="#s8:l4">gheneer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Oock verliet niet die trouwe <rhyme label="a" type="m">Godt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Die drie Mans in t'vuyr Oven <rhyme label="a" type="m" corresp="#s9:l1">root</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Syn Enghel sant hy <rhyme label="b" type="m">heen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Bewaerd'se voor des vuyres <rhyme label="c" type="m">gloot</rhyme></l>
        <l id="s9:l5" met="4" type="-+">En halp haer oock wt aller <rhyme label="c" type="m" corresp="#s9:l4">noot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Godt ghy zijt huyden noch so <rhyme label="a" type="m">rijck</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Als ghy gheweest zijt <rhyme label="a" type="m" corresp="#s10:l1">eewichlijck</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Myn trouwen staet op <rhyme label="b" type="m">dy</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Maeckt my aen myner Zielen <rhyme label="c" type="m">rijck</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">So heb ick g'noech hier end' <rhyme label="c" type="m" corresp="#s10:l4">eew'lijck</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Tijtlijc eer wil ick geern' <rhyme label="a" type="m">ontbeeren</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Ghy wilt my dat eewigh' <rhyme label="a" type="m" corresp="#s11:l1">gheweeren</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dat ghy verworven <rhyme label="b" type="m">hebt</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Door dijnen swaren bitt'ren <rhyme label="c" type="m">doot</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Dat bid ick u myn Heer en <rhyme label="c" type="m" corresp="#s11:l4">Godt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Allent wat is op deser <rhyme label="a" type="m">welt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Het sy silver, gout ofte <rhyme label="a" type="m" corresp="#s12:l1">ghelt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Rijckdom en tijtlijck <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Dat dueret maer een cleyne <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">End helpt doch niet ter <rhyme label="c" type="m" corresp="#s12:l4">salicheyt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ick danck u Christ o Godes <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Dat ghy my liet sulcx kennen <rhyme label="a" type="m" corresp="#s13:l1">schoon</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Door dijn Godtlijcke <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Verleent my oock <rhyme label="c" type="m">bestendicheyt</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Tot myner Sielen <rhyme label="c" type="m" corresp="#s13:l4">salicheyt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Lof en prijs sy dy vroech en <rhyme label="a" type="m">spaet</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Voor al dijn bewesen <rhyme label="a" type="m" corresp="#s14:l1">weldaet</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">En bidd' <rhyme label="b" type="m">ootmoedelijck</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Laet my Heer van dijn <rhyme label="c" type="m">Aenghesicht</rhyme></l>
        <l id="s14:l5" met="4" type="-+">Verstooten werden eewich <rhyme label="c" type="m" corresp="#s14:l4">nicht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
