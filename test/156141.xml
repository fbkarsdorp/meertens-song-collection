  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">BAchus komt dalen eens by mijn <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">d’Min die brengt mijn staag in <rhyme label="a" type="m" corresp="#s1:l1">mizeer</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">’k Wil niet meer zugten, ’k laat ’t <rhyme label="b" type="m">Minnen-staan</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">En ik ga <rhyme label="c" type="f">klinken</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">By Nagt en Dagen, dat staat my wel <rhyme label="b" type="m" corresp="#s1:l3">aan</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Ik houd van <rhyme label="c" type="f" corresp="#s1:l4">Drinken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maar niet van ’t Minne dat ’s uyt mijn <rhyme label="a" type="m">zin</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Ik houd van Bachus en niet van de <rhyme label="a" type="m" corresp="#s2:l1">Min</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">’k Zal van uw vlugten, en gaan tot de <rhyme label="b" type="m">Wijn</rhyme>,</l>
        <l id="s2:l4" met="2" type="+-">Doet mijn <rhyme label="c" type="f">herleven</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Houd ons uyt zugten, en ook uyt veel <rhyme label="b" type="m" corresp="#s2:l3">pijn</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">De Wijn doet <rhyme label="c" type="f" corresp="#s2:l4">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Want al uw Lonken en mal <rhyme label="a" type="m">gezigt</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En uw zot Wezen mijn niet meer <rhyme label="a" type="m" corresp="#s3:l1">verligt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En ook uw Leven, staan mijn niet <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Gaat weg <rhyme label="c" type="f">Sottinne</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Want uw manieren, die doen mijn <rhyme label="b" type="m" corresp="#s3:l3">gaan</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">’k Zal uw niet <rhyme label="c" type="f" corresp="#s3:l4">Minne</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want al het Minnen ’k verlaaten <rhyme label="a" type="m">zal</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">’k Ga nu drinken met een goed <rhyme label="a" type="m" corresp="#s4:l1">geschal</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Want Bachus die geeft aan my veel <rhyme label="b" type="m">plyzier</rhyme>,</l>
        <l id="s4:l4" met="2" type="+-">Zouder veel <rhyme label="c" type="f">zugten</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">’k Zal Philis haaten met al haar <rhyme label="b" type="m" corresp="#s4:l3">ziwer</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">’k Ga van haar <rhyme label="c" type="f" corresp="#s4:l4">vlugten</rhyme>.</l>
      </lg>
    </lg>
