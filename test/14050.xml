  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Friesen! treurd en <rhyme label="a" type="m">klaeghd</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Verwerpt al u <rhyme label="b" type="f">cieraden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En droeve rou-kle'en <rhyme label="a" type="m" corresp="#s1:l1">draeght</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In plaets van <rhyme label="b" type="f" corresp="#s1:l2">pronck-ghewaden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Want die tot u <rhyme label="c" type="m">geluck</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gheluckigh was <rhyme label="d" type="f">geboren</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hebt ghy (o droeve <rhyme label="c" type="m" corresp="#s1:l5">druck</rhyme>!)</l>
        <l id="s1:l8" met="3" type="-+">In uwen nood <rhyme label="d" type="f" corresp="#s1:l6">verloren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy was u land-schaps <rhyme label="a" type="m">vreughd</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Een Graef van alle <rhyme label="b" type="f">Graven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De woonplaets van de <rhyme label="a" type="m" corresp="#s2:l1">deughd</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En 't pack-huys van haer <rhyme label="b" type="f" corresp="#s2:l2">gaven</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Mild, vroom, heusch, <rhyme label="c" type="m">goedertier</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Godvruchtigh, wijs, <rhyme label="d" type="f">geduldigh</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">In 't stryden, dapper, <rhyme label="c" type="m" corresp="#s2:l5">fier</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Voorsichtigh en <rhyme label="d" type="f" corresp="#s2:l6">sorghvuldigh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">U vryheyd was <rhyme label="a" type="m">ontmand</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En ghy so seer <rhyme label="b" type="f">bestreden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Met rooven, moorden <rhyme label="a" type="m" corresp="#s3:l1">brand</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En meer <rhyme label="b" type="f" corresp="#s3:l2">moetwilligheden</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat ghy nauw langer <rhyme label="c" type="m">dorst</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Op uwe bedden <rhyme label="d" type="f">slapen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Doen u dees brave <rhyme label="c" type="m" corresp="#s3:l5">Vorst</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ontsetten met de <rhyme label="d" type="f" corresp="#s3:l6">wapen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Al eer hy twintigh <rhyme label="a" type="m">iaer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Volkomentlycken <rhyme label="b" type="f">telden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hy hem in het <rhyme label="a" type="m" corresp="#s4:l1">gevaer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van wreede stryden <rhyme label="b" type="f" corresp="#s4:l2">stelden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Al waer hy, hoogh van <rhyme label="c" type="m">moed</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Wierd menighmael <rhyme label="d" type="f">geschoten</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">En heeft syn Graeflyck <rhyme label="c" type="m" corresp="#s4:l5">bloed</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Om uwent wil <rhyme label="d" type="f" corresp="#s4:l6">vergoten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Door syn <rhyme label="a" type="m">manhaftigheyd</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Door syn strydbare <rhyme label="b" type="f">zeden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Syn treffelyck <rhyme label="a" type="m" corresp="#s5:l1">beleyd</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En 't schenden van syn <rhyme label="b" type="f" corresp="#s5:l2">leden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Heeft hy u uyt den <rhyme label="c" type="m">nood</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Gered, en gantsch <rhyme label="d" type="f">ontslagen</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Nu is die Veld-Heer <rhyme label="c" type="m" corresp="#s5:l5">dood</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En word daer heen <rhyme label="d" type="f" corresp="#s5:l6">gedragen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die uwe Landen <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s6:l2" met="3" type="-+">In weeldigheyd doen <rhyme label="b" type="f">groeijen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">So, dat geen mensch die <rhyme label="a" type="m" corresp="#s6:l1">leeft</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Oyt land sagh schoonder <rhyme label="b" type="f" corresp="#s6:l2">bloeijen</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Dies treurd, o Friesen! <rhyme label="c" type="m">treurd</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Klaeghd, weend, en wringt u <rhyme label="d" type="f">handen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Om 't ongeluck <rhyme label="c" type="m" corresp="#s6:l5">gebeurd</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Aen uwe vrije <rhyme label="d" type="f" corresp="#s6:l6">Landen</rhyme>.</l>
      </lg>
    </lg>
  </text>
