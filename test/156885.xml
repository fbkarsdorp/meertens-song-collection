    <tags/>
    <melody>O zalig heilig Bethlehem</melody>
  <author>Jacob Coenraetsz Mayvogel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heyligh Godt! ghy die den <rhyme label="a" type="m">Echt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Hebt in-gestelt naer u <rhyme label="b" type="f">behagen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Geeft dat wy ons daer in <rhyme label="a" type="m" corresp="#s1:l1">oprecht</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Altoos naer uwen wille <rhyme label="b" type="f" corresp="#s1:l2">dragen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy wilt, o Heer, dat man en <rhyme label="a" type="m">wijf</rhyme></l>
        <l id="s2:l2" met="4" type="-+">In rechte Liefde t'samen <rhyme label="b" type="f">woonen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">In al haer doen en haer <rhyme label="a" type="m" corresp="#s2:l1">bedrijf</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Den Echten-staet met eendracht <rhyme label="b" type="f" corresp="#s2:l2">kroonen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">3.Wy bidden u wilt alle <rhyme label="a" type="m">quaet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Genadelijcken van ons <rhyme label="b" type="f">weeren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het boose twist onvredigh <rhyme label="a" type="m" corresp="#s3:l1">saet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Uyt onse herten altoos <rhyme label="b" type="f" corresp="#s3:l2">keeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Geeft dat de Liefd' in volle <rhyme label="a" type="m">kracht</rhyme></l>
        <l id="s4:l2" met="4" type="-+">In d' Echte-staet mach by ons <rhyme label="b" type="f">bloeyen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En t' allen tijt soo wort <rhyme label="a" type="m" corresp="#s4:l1">betracht</rhyme>;</l>
        <l id="s4:l4" met="4" type="-+">Dat wy in Liefden altoos <rhyme label="b" type="f" corresp="#s4:l2">groeyen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Op u, o Heer in alle <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ons oogen slaen en 't quade <rhyme label="b" type="f">schouwen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">In 't midden van de bleecke <rhyme label="a" type="m" corresp="#s5:l1">doodt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Op u beloften ons <rhyme label="b" type="f" corresp="#s5:l2">vertrouwen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Bedwinght den boosen vyant <rhyme label="a" type="m">doch</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat hy door twist of <rhyme label="b" type="f">tegenhede</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Noch door geen ander snood <rhyme label="a" type="m" corresp="#s6:l1">bedrogh</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Maeckt tusschen man en vrouw <rhyme label="b" type="f" corresp="#s6:l2">onvrede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Bewaert ons Heer voor <rhyme label="a" type="m">overspel</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Voor grove sonden ende <rhyme label="b" type="f">schanden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Voor haet en nijt, of boos <rhyme label="a" type="m" corresp="#s7:l1">gequel</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Neemt onse zieltjes in u <rhyme label="b" type="f" corresp="#s7:l2">handen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dat wy met vreught hier al <rhyme label="a" type="m">gelijck</rhyme></l>
        <l id="s8:l2" met="4" type="-+">In d' Echte-staet u eer <rhyme label="b" type="f">bewijsen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En namaels in het <rhyme label="a" type="m" corresp="#s8:l1">Hemelrijck</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">In eeuwigheyt u glory <rhyme label="b" type="f" corresp="#s8:l2">prijsen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
