  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Komt herwaerts mijn <rhyme label="a" type="m">Vrindin</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Vertroost my, eer dat ick stick door heete <rhyme label="a" type="m" corresp="#s1:l1">Min</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Verlicht mijn pijn, wilt by my <rhyme label="b" type="m">zijn</rhyme>;</l>
        <l id="s1:l4" met="4" type="-+">Want ick schier sterf in dit <rhyme label="b" type="m" corresp="#s1:l3">gequijn</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Mijn weenen en <rhyme label="c" type="f">steenen</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Aenhoort, en 't <rhyme label="d" type="m">Woordt</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Dat ick brengh <rhyme label="d" type="m" corresp="#s1:l6">voort</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Wilt helpen goet, die met <rhyme label="e" type="m">ootmoet</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">U altoos vallen sal te <rhyme label="e" type="m" corresp="#s1:l8">voet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wilt uw steenachtigh <rhyme label="a" type="m">Hart</rhyme></l>
        <l id="s2:l2" met="5" type="-+">Niet langer verharden voor mijn droeve <rhyme label="a" type="m" corresp="#s2:l1">smart</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer wilt bly, nad'ren tot <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dan stel ick 't treuren aen een <rhyme label="b" type="m" corresp="#s2:l3">zy</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Wilt 'kermen, <rhyme label="c" type="f">erbermen</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Mijn klacht by <rhyme label="d" type="m">Nacht</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Hebt in 't <rhyme label="d" type="m" corresp="#s2:l6">gedacht</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Dan sal met vlijt, mijn Ziel <rhyme label="e" type="m">verblijt</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">U prijsen Lief tot aller <rhyme label="e" type="m" corresp="#s2:l8">tijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ey wilt doch <rhyme label="a" type="m">nimmermeer</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Niet lijden, dat ick sou sterven van <rhyme label="a" type="m" corresp="#s3:l1">hartzeer</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">De bitt're doodt, en in de <rhyme label="b" type="m">boot</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Van Charon my doch niet en <rhyme label="b" type="m" corresp="#s3:l3">stoot</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">So wreede, wilt <rhyme label="c" type="f">hede</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Mitsdien,, troost <rhyme label="d" type="m">bien</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Hoe kunt ghy <rhyme label="d" type="m" corresp="#s3:l6">sien</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Dat ick van druck, O <rhyme label="e" type="m">ongeluck</rhyme>!</l>
        <l id="s3:l9" met="2" type="-+">Jn 't donck're graf ter neder <rhyme label="e" type="m" corresp="#s3:l8">buck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mijn woorden <rhyme label="a" type="m">Honingh-zoet</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Moordresse zijn by u niet dan bitter <rhyme label="a" type="m" corresp="#s4:l1">roet</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Door fenijn, komt ghy van <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s4:l4" met="4" type="-+">So seer af-schuwelijck te <rhyme label="b" type="m" corresp="#s4:l3">zijn</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">U lichten, die <rhyme label="c" type="f">stichten</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Een brandt, o! <rhyme label="d" type="m">schandt</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Jn <rhyme label="d" type="m" corresp="#s4:l6">m'Jngewant</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Komt bittere doodt, kom schiet een <rhyme label="e" type="m">schoot</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">En ruckt my uyt des werelts <rhyme label="e" type="m" corresp="#s4:l8">kloot</rhyme>.</l>
      </lg>
    </lg>
  </text>
