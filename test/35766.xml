    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">TOt Godes eer, ick laet <rhyme label="a" type="f">ontspringen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Mijn stem, uyt liefde <rhyme label="b" type="m">onbevreest</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Van Sint Cornelis sal ick <rhyme label="a" type="f" corresp="#s1:l1">singen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Wat vroomen Helt hy is <rhyme label="b" type="m" corresp="#s1:l2">geweest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als de Christ'nen 't leven <rhyme label="a" type="f">verlooren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Veel in't getal door <rhyme label="b" type="m">Decius</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Als doe tot Roomen is <rhyme label="a" type="f" corresp="#s2:l1">gebooren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Godts waerde vrindt <rhyme label="b" type="m" corresp="#s2:l2">Cornelius</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy in sijn jeught, en jonge <rhyme label="a" type="f">jaren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ootmoedigheyt en deughden <rhyme label="b" type="m">mint</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">'s Werelts ydelheyt laet hy <rhyme label="a" type="f" corresp="#s3:l1">varen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">In Godts liefde was hy <rhyme label="b" type="m" corresp="#s3:l2">verslint</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als men vergadert veele <rhyme label="a" type="f">vonden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Om te kiesen Kercks <rhyme label="b" type="m">Opper-hooft</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Sint Cornelis uyt alle <rhyme label="a" type="f" corresp="#s4:l1">monden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Wort verkosen, elck hem daer <rhyme label="b" type="m" corresp="#s4:l2">looft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Tegen sijn wil wordt soo <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Maer dit geschiedt na Godes <rhyme label="b" type="m">wil</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Hoogheydt hy noyt socht in sijn <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Na Godt hem voeght, hoe swaer 't hem <rhyme label="b" type="m" corresp="#s5:l2">vil</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Novatiaen in dese <rhyme label="a" type="f">tijden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die brenght aen een seer swaer <rhyme label="b" type="m">tempeest</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Cornelis hem hier in <rhyme label="a" type="f" corresp="#s6:l1">verblijden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Soo vroom en sterck was sijnen <rhyme label="b" type="m" corresp="#s6:l2">Geest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy achte niet al de <rhyme label="a" type="f">boosheden</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Verciert van dese Ketter <rhyme label="b" type="m">boos</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Een yder dit doe heeft <rhyme label="a" type="f" corresp="#s7:l1">beleden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Novatiaen is seer <rhyme label="b" type="m" corresp="#s7:l2">godtloos</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">In sijn tijdt Dienaers van d' <rhyme label="a" type="f">Afgoden</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Waren Gallus en <rhyme label="b" type="m">Volus'jaen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Die seer grouwelijck laten <rhyme label="a" type="f" corresp="#s8:l1">dooden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die haer Geloof niet af en <rhyme label="b" type="m" corresp="#s8:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sy laten desen heel <rhyme label="a" type="f">verbranden</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Ofte lijden ander <rhyme label="b" type="m">ellent</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Sint Cornelis hoopt van haer <rhyme label="a" type="f" corresp="#s9:l1">handen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Te krijghen 't aldergrootst <rhyme label="b" type="m" corresp="#s9:l2">torment</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Als een Seyl-steen trecht de <rhyme label="a" type="f">Menschen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Alwaer dat was dees waerde <rhyme label="b" type="m">Sant</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Door Sathans wil, hierom te <rhyme label="a" type="f" corresp="#s10:l1">wenschen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Volus'jaen hem uyt Romen <rhyme label="b" type="m" corresp="#s10:l2">bant</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Als hij was wegh, veel hem <rhyme label="a" type="f">beklaeghden</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Aen de Tyran met valscheyt <rhyme label="b" type="m">groot</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Cornelis wil u uyt 't Rijck <rhyme label="a" type="f" corresp="#s11:l1">jaghen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Volus'jaen hierom hem <rhyme label="b" type="m" corresp="#s11:l2">ontboot</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Die Cornelis vraeght: wilt ghy <rhyme label="a" type="f">jagen</rhyme></l>
        <l id="s12:l2" met="4" type="-+">My uyt mijn Rijck? antwoort <rhyme label="b" type="m">terstont</rhyme>;</l>
        <l id="s12:l3" met="4" type="-+">Hy antwoordt neen. Seer wreede <rhyme label="a" type="f" corresp="#s12:l1">slaghen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Laet hy nochtans slaen op sijn <rhyme label="b" type="m" corresp="#s12:l2">mont</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Cornelis vonnis wort <rhyme label="a" type="f">gesproken</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Ghy moet eeren Mars onse <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Hy sprack met vroomheyt <rhyme label="a" type="f" corresp="#s13:l1">onghebroken</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">'k Ben niet soo dwaes, ofte soo <rhyme label="b" type="m" corresp="#s13:l2">sot</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Wilt ghy niet eeren onse <rhyme label="a" type="f">Goden</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Soo moet ghy sterven door het <rhyme label="b" type="m">swaerdt</rhyme>;</l>
        <l id="s14:l3" met="4" type="-+">Ick wensch te lijden hondert <rhyme label="a" type="f" corresp="#s14:l1">dooden</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Niette minste my maeckt <rhyme label="b" type="m" corresp="#s14:l2">vervaert</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Eer Sint Cornelis soude <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Sijn Bewaerder seyt; helpt mijn <rhyme label="b" type="m">Vrouw</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Vijfthien jaeren heeft moeten <rhyme label="a" type="f" corresp="#s15:l1">derven</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Haer gangh, met groote pijn en <rhyme label="b" type="m" corresp="#s15:l2">rouw</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">In Iesu naem, staet op u <rhyme label="a" type="f">voeten</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Sprack hy alleen doe tegens <rhyme label="b" type="m">haer</rhyme>:</l>
        <l id="s16:l3" met="4" type="-+">Sy staet op: Godt begint te <rhyme label="a" type="f" corresp="#s16:l1">groeten</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Met veel woorden in 't <rhyme label="b" type="m" corresp="#s16:l2">openbaer</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Mars haer Godt doet geen <rhyme label="a" type="f">Offerhanden</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Al wort hy daer oock door <rhyme label="b" type="m">gestelt</rhyme>.</l>
        <l id="s17:l3" met="4" type="-+">Gedoot nu wort door de Beuls <rhyme label="a" type="f" corresp="#s17:l1">handen</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Cornlius den vromen <rhyme label="b" type="m" corresp="#s17:l2">Heldt</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Liefhebbers van Cornelis <rhyme label="a" type="f">deughden</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Volght die na: 't Roomsch geloof <rhyme label="b" type="m">behout</rhyme>;</l>
        <l id="s18:l3" met="4" type="-+">Daer voor te lijden acht het <rhyme label="a" type="f" corresp="#s18:l1">vreughden</rhyme>;</l>
        <l id="s18:l4" met="4" type="-+">Hoovaerdicheyt en hoogheyt <rhyme label="b" type="m" corresp="#s18:l2">schout</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Sinte Cornelis wy uw' <rhyme label="a" type="f">smeecken</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Van Iesu voor ons krijght, o <rhyme label="b" type="m">Vrint</rhyme>!</l>
        <l id="s19:l3" met="4" type="-+">Als wy in d'ure des doodts <rhyme label="a" type="f" corresp="#s19:l1">steecken</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Dat yeder hulp en troost dan <rhyme label="b" type="m" corresp="#s19:l2">vint</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Wilt Iesu aen ons alle <rhyme label="a" type="f">geven</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Ons kleyn t' achten met ons <rhyme label="b" type="m">Patroon</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Om daer nae te worden <rhyme label="a" type="f" corresp="#s20:l1">verheven</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Dit soecken wy, o Godes <rhyme label="b" type="m" corresp="#s20:l2">Soon</rhyme>;</l>
      </lg>
    </lg>
  </text>
</song>
