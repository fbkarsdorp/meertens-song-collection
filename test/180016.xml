  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">'k Wouw wel <rhyme label="a" type="m">dat</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">'k Wouw wel <rhyme label="a" type="m" corresp="#s1:l1">dat</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Ik een zak drieguldens <rhyme label="a" type="m" corresp="#s1:l1">had</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Piet, ik wil je <rhyme label="b" type="f">zweren</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dat ik inderdaad aan <rhyme label="c" type="m">jouw</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">'k Bid geloof my op myn <rhyme label="c" type="m" corresp="#s1:l5">trouw</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Voort zou de helft <rhyme label="b" type="f" corresp="#s1:l4">vereren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Ja, maar <rhyme label="a" type="m">Jan</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Ja, maar <rhyme label="a" type="m" corresp="#s2:l1">Jan</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">'k Hoorje dat wel wenschen <rhyme label="a" type="m" corresp="#s2:l1">man</rhyme>;</l>
        <l id="s2:l4" met="3" type="+-">Maar wat kan 't my <rhyme label="b" type="f">baten</rhyme>?</l>
        <l id="s2:l5" met="4" type="+-">Kom, myn allerliefste <rhyme label="c" type="m">vaêr</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Geef me nu op reekning <rhyme label="c" type="m" corresp="#s2:l5">maar</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Wat goude of zilvre <rhyme label="b" type="f" corresp="#s2:l4">platen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Lieve <rhyme label="a" type="m">Piet</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Lieve <rhyme label="a" type="m" corresp="#s3:l1">Piet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'k Heb ze tegenwoordig <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Wees noch wat <rhyme label="b" type="f">geduldig</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Doet die vrindschap my, 'k <rhyme label="c" type="m">beken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Dat ik in der waarheid <rhyme label="c" type="m" corresp="#s3:l5">ben</rhyme></l>
        <l id="s3:l7" met="3" type="-+">De monnie aan je <rhyme label="b" type="f" corresp="#s3:l4">schuldig</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">'t Duurt zoo <rhyme label="a" type="m">lang</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">'t Duurt zoo <rhyme label="a" type="m" corresp="#s4:l1">lang</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'t Wachten valt my waarlyk <rhyme label="a" type="m" corresp="#s4:l1">bang</rhyme>;</l>
        <l id="s4:l4" met="3" type="+-">'k Heb het geld van <rhyme label="b" type="f">noden</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Maar ik merk wel, ligt denk <rhyme label="c" type="m">jy</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">'t Borgen staat my immers <rhyme label="c" type="m" corresp="#s4:l5">vry</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Terwyl het is de <rhyme label="b" type="f" corresp="#s4:l4">mode</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="+-">Neen, ô <rhyme label="a" type="m">neen</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Neen, ô <rhyme label="a" type="m" corresp="#s5:l1">neen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Wees gerust, laat my met <rhyme label="a" type="m" corresp="#s5:l1">vreên</rhyme>;</l>
        <l id="s5:l4" met="3" type="+-">Want in drie paar <rhyme label="b" type="f">weken</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Word door my de helft van 't <rhyme label="c" type="m">geld</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">U aan Ryders <rhyme label="c" type="m" corresp="#s5:l5">toegeteld</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Ik wil daar borg voor <rhyme label="b" type="f" corresp="#s5:l4">spreken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="+-">Dat 's wat <rhyme label="a" type="m">schraal</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Dat 's wat <rhyme label="a" type="m" corresp="#s6:l1">schraal</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Borg te zyn en <rhyme label="a" type="m" corresp="#s6:l1">Prinçipaal</rhyme>;</l>
        <l id="s6:l4" met="3" type="+-">Maar ik zal 't <rhyme label="b" type="f">proberen</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Ik vertrouw my op uw <rhyme label="c" type="m">woord</rhyme>:</l>
        <l id="s6:l6" met="4" type="+-">Houd dat dan ook zo 't <rhyme label="c" type="m" corresp="#s6:l5">behoord</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Gelyk een man met <rhyme label="b" type="f" corresp="#s6:l4">eeren</rhyme>.</l>
      </lg>
    </lg>
