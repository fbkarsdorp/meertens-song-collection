  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">o Slaap! o Slaap! laat my uw' zoetheid <rhyme label="a" type="f">smaaken</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wiegt my nu zagt in rust! maar <rhyme label="b" type="m">ach</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Indien ik eens niet mogt <rhyme label="a" type="f" corresp="#s1:l1">ontwaaken</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Myn oog niet meer den morgen <rhyme label="b" type="m" corresp="#s1:l2">zag</rhyme>?</l>
        <l id="s1:l5" met="2" type="+-">O, dan <rhyme label="c" type="m">schynt</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Uit dat <rhyme label="d" type="f">duister</rhyme></l>
        <l id="s1:l7" met="2" type="+-">'t Licht, vol <rhyme label="d" type="f" corresp="#s1:l6">luister</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Dat nooit <rhyme label="c" type="m" corresp="#s1:l5">verdwynt</rhyme>;</l>
        <l id="s1:l9" met="2" type="+-">En my <rhyme label="e" type="f">wagten</rhyme></l>
        <l id="s1:l10" met="2" type="+-">Nimmer <rhyme label="e" type="f" corresp="#s1:l9">nagten</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Daar my 't eeuwig licht <rhyme label="f" type="m">beschynt</rhyme>.</l>
      </lg>
    </lg>
  </text>
