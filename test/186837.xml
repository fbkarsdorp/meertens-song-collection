    <tags/>
    <melody>O grote God gij eeuwig licht</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O groote God, gy eeuwig <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Voorwiens doorstraalend <rhyme label="a" type="m" corresp="#s1:l1">aangesigt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">De dikke helsche <rhyme label="b" type="m">duisternis</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ook licht, en nimmer duister <rhyme label="b" type="m" corresp="#s1:l3">is</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gy, die den nacht, die nu <rhyme label="a" type="m">genaakt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Tot rust van 't dag werk hebt <rhyme label="a" type="m" corresp="#s2:l1">gemaakt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Neem onse ziel, ons goed, en <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dan deesen nacht, in uw <rhyme label="b" type="m" corresp="#s2:l3">behoed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Verquik ons door een soete <rhyme label="a" type="m">rust</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Om morgen goed te doen met <rhyme label="a" type="m" corresp="#s3:l1">lust</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat onse slaap gemaatigt <rhyme label="b" type="m">zy</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En tot uw eer vooral <rhyme label="b" type="m" corresp="#s3:l3">gedy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Licht onsen geest, al slaapt ons <rhyme label="a" type="m">lyf</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dat die altoos u wakker <rhyme label="a" type="m" corresp="#s4:l1">blyf</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En elk, met vree, syn heil <rhyme label="b" type="m">verwacht</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Zo weer van ons des duivels <rhyme label="b" type="m" corresp="#s4:l3">magt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Al deeden wy, den ganschen <rhyme label="a" type="m">dag</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Veel sonden teegen uw <rhyme label="a" type="m" corresp="#s5:l1">gesag</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Bedek ook 't allersnoodste <rhyme label="b" type="m">feit</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Na uwe groote <rhyme label="b" type="m" corresp="#s5:l3">goedigheit</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Op dat ons vleesch dit <rhyme label="a" type="m">jammerdal</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Gerust versmaa, als t scheiden <rhyme label="a" type="m" corresp="#s6:l1">zal</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Na synen dood bly op mag <rhyme label="b" type="m">staan</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En in het eeuwig leeven <rhyme label="b" type="m" corresp="#s6:l3">gaan</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoed ook de gansche <rhyme label="a" type="m">Kristenheit</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En troost, wat klaagt, of sucht, of <rhyme label="a" type="m" corresp="#s7:l1">schreit</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Verhoor ons doch, en sulx <rhyme label="b" type="m">tereer</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Van uwen heilsoon, onsen <rhyme label="b" type="m" corresp="#s7:l3">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
