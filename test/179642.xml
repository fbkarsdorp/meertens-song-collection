<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>179642</id>
    <date>
      <year-start>1767</year-start>
      <year-end>1767</year-end>
    </date>
    <tags/>
    <melody>O zielsverrukte avondstond</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ô ZIels verrukten <rhyme label="a" type="m">Avondstond</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ik stel voor u myn <rhyme label="b" type="m">Fluyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Voor u die Per’le strooid in ’t <rhyme label="a" type="m" corresp="#s1:l1">rond</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Op bloemen en op <rhyme label="b" type="m" corresp="#s1:l2">kruid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe helder schynd de zilv’re <rhyme label="a" type="m">Maen</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">En lagt ons Vrolyk <rhyme label="b" type="m">toe</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Men ziet nu duyzend Sterre <rhyme label="a" type="m" corresp="#s2:l1">staen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van glinstere nooit <rhyme label="b" type="m" corresp="#s2:l2">moe</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het Firmament staet nu ten <rhyme label="a" type="m">toon</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">’t Welk ons een kleed <rhyme label="b" type="m">verbeeld</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Met diamanten welker <rhyme label="a" type="m" corresp="#s3:l1">schoon</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Ons hert en oogen <rhyme label="b" type="m" corresp="#s3:l2">streeld</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Leeuw’rik die van zorg <rhyme label="a" type="m">belet</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Weet van geen druk nog <rhyme label="b" type="m">kruis</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">En als de zon in ’t Weste <rhyme label="a" type="m" corresp="#s4:l1">zet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Roept hy zyn Jonge <rhyme label="b" type="m" corresp="#s4:l2">t’huis</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De boer verlaet van ’t werken <rhyme label="a" type="m">moe</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Den Akker en de <rhyme label="b" type="m">Ploeg</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Syn weerhelft lagt hem vriend’lyk <rhyme label="a" type="m" corresp="#s5:l1">toe</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat is hem loon <rhyme label="b" type="m" corresp="#s5:l2">genoeg</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">De melkmeid zet haer nagtmus <rhyme label="a" type="m">regt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En gaet zoo na haer <rhyme label="b" type="m">Kooy</rhyme>!</l>
        <l id="s6:l3" met="4" type="-+">Maer ziet daer komt een boere <rhyme label="a" type="m" corresp="#s6:l1">knegt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die kruipt by haer in ’t <rhyme label="b" type="m" corresp="#s6:l2">hooy</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Soo leeft men hier al op ’t <rhyme label="a" type="m">Land</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Soo lang den <rhyme label="b" type="m">dageraed</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Syn gulde strael’ schynt aen de <rhyme label="a" type="m" corresp="#s7:l1">Wand</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Tot aen den Avond <rhyme label="b" type="m" corresp="#s7:l2">laet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Daer is in de Stad geen meerder <rhyme label="a" type="m">vreugt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Men gaet niet vroeg na <rhyme label="b" type="m">bed</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Want voor de Amsterdamze <rhyme label="a" type="m" corresp="#s8:l1">jeugt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Komt dan de meeste <rhyme label="b" type="m" corresp="#s8:l2">pret</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Men gaet daer ’s Avonds aen de <rhyme label="a" type="m">zwier</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">by duin of Mie <rhyme label="b" type="m">Tabak</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Die vuyle Pry, dat <rhyme label="a" type="m" corresp="#s9:l1">Venus-dier</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Men drinkt op zyn <rhyme label="b" type="m" corresp="#s9:l2">gemak</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De Koffi kan staet by het <rhyme label="a" type="m">vuur</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Of lusje liever <rhyme label="b" type="m">Wyn</rhyme>?</l>
        <l id="s10:l3" met="4" type="-+">Ik zuyp myn in een half <rhyme label="a" type="m" corresp="#s10:l1">Uur</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Soo dronken als een <rhyme label="b" type="m" corresp="#s10:l2">zwyn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ie bent ’er een gelyk je <rhyme label="a" type="m">broer</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Ie bent een rottig <rhyme label="b" type="m">vel</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Ie bent een Ouwe Pekel <rhyme label="a" type="m" corresp="#s11:l1">hoer</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Man-heer dat weet ik <rhyme label="b" type="m" corresp="#s11:l2">wel</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En staet het ons dan daer niet <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">dan gaen wy na het <rhyme label="b" type="m">Hof</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">by haegsche Ianne of in de <rhyme label="a" type="m" corresp="#s12:l1">baen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">daer vind gy vanjer <rhyme label="b" type="m" corresp="#s12:l2">stof</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">En dan by hem in de <rhyme label="a" type="m">Fontyn</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">dat ’s zoo een huyze <rhyme label="b" type="m">quant</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">hy wil ook wel eens vrolyk <rhyme label="a" type="m" corresp="#s13:l1">zyn</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Daer hebje den egte <rhyme label="b" type="m" corresp="#s13:l2">trant</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Daer slaet men mee de Bal niet <rhyme label="a" type="m">mis</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Men danst daer zomtyds <rhyme label="b" type="m">straf</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">Voor al als ’t stijlen Avond <rhyme label="a" type="m" corresp="#s14:l1">is</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">Dat nieuwetje moet daer <rhyme label="b" type="m" corresp="#s14:l2">af</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">De Pyl is haest geen noemens <rhyme label="a" type="m">waert</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">het Bos zit haest op <rhyme label="b" type="m">zy</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Daer vind gy Volk van Ploerten <rhyme label="a" type="m" corresp="#s15:l1">aert</rhyme>;</l>
        <l id="s15:l4" met="3" type="-+">het Wyf een valsche <rhyme label="b" type="m" corresp="#s15:l2">pry</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">En zoo de Karreman <rhyme label="a" type="m">voorby</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Regt toe na <rhyme label="b" type="m">doretee</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">daer is het lugtig aen het <rhyme label="a" type="m" corresp="#s16:l1">Y</rhyme>;</l>
        <l id="s16:l4" met="3" type="-+">Men leeft daer stil in <rhyme label="b" type="m" corresp="#s16:l2">Vree</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Maer zagt word ik hier niet <rhyme label="a" type="m">gekult</rhyme>;</l>
        <l id="s17:l2" met="3" type="-+">Men schelt eens aen de <rhyme label="b" type="m">Poort</rhyme>;</l>
        <l id="s17:l3" met="4" type="-+">Ik wet gy hooren roepen <rhyme label="a" type="m" corresp="#s17:l1">zult</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Met de intree! Speel maer <rhyme label="b" type="m" corresp="#s17:l2">voort</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Dat is het fyne van de <rhyme label="a" type="m">Mis</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Ian kult Piet en Piet kult <rhyme label="b" type="m">Ian</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Maer daer men zelver leep op <rhyme label="a" type="m" corresp="#s18:l1">is</rhyme>;</l>
        <l id="s18:l4" met="3" type="-+">Daer krygt Ian Oom niet <rhyme label="b" type="m" corresp="#s18:l2">van</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Het is waer dat men gaet of <rhyme label="a" type="m">zwiert</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Men vind geen meerder <rhyme label="b" type="m">stof</rhyme>:</l>
        <l id="s19:l3" met="4" type="-+">Als op de Baengragt met <rhyme label="a" type="m" corresp="#s19:l1">pleyzier</rhyme>!</l>
        <l id="s19:l4" met="3" type="-+">Al in het <rhyme label="b" type="m" corresp="#s19:l2">Brussels-hof</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Des Woensdags speelt men daer <rhyme label="a" type="m">plyzant</rhyme></l>
        <l id="s20:l2" met="3" type="-+">Een schoon <rhyme label="b" type="m">Liefhebbery</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Men vind daer Boeren <rhyme label="a" type="m" corresp="#s20:l1">abondant</rhyme>:</l>
        <l id="s20:l4" met="3" type="-+">Met dames aen haer <rhyme label="b" type="m" corresp="#s20:l2">zy</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Het gaet daer alles vriendelyk, <rhyme label="a" type="m">ziet</rhyme></l>
        <l id="s21:l2" met="3" type="-+">En zonder vals <rhyme label="b" type="m">gevly</rhyme>:</l>
        <l id="s21:l3" met="4" type="-+">Men vind daer gantsch ter Wereld <rhyme label="a" type="m" corresp="#s21:l1">niet</rhyme>,</l>
        <l id="s21:l4" met="3" type="-+">Van snoo <rhyme label="b" type="m" corresp="#s21:l2">bedriegery</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">So vind men dan in <rhyme label="a" type="m">Amsterdam</rhyme>,</l>
        <l id="s22:l2" met="3" type="-+">Van alles veel <rhyme label="b" type="m">vermaek</rhyme>!</l>
        <l id="s22:l3" met="4" type="-+">Maer op de Baengragt in het <rhyme label="a" type="m" corresp="#s22:l1">Lam</rhyme>:</l>
        <l id="s22:l4" met="3" type="-+">Vind ik de beste <rhyme label="b" type="m" corresp="#s22:l2">smaek</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Ik heb het alles wel <rhyme label="a" type="m">bezien</rhyme>!</l>
        <l id="s23:l2" met="3" type="-+">En dan met veel <rhyme label="b" type="m">vermaek</rhyme>:</l>
        <l id="s23:l3" met="4" type="-+">Maer ik zeg dat de brave <rhyme label="a" type="m" corresp="#s23:l1">lien</rhyme>,</l>
        <l id="s23:l4" met="3" type="-+">Zyn aen de beste <rhyme label="b" type="m" corresp="#s23:l2">zaek</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
