  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ZOete lieve volle <rhyme label="a" type="f">Leysje</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">'k Hebje duyvelachtig <rhyme label="b" type="m">lief</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Want gy bend soo'n aerdig <rhyme label="a" type="f" corresp="#s1:l1">Meysje</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En daer toe myn Herten <rhyme label="b" type="m" corresp="#s1:l2">Dief</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Daerom wou ik u eens <rhyme label="c" type="f">vragen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Of gy wel genegen <rhyme label="d" type="m">bend</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Om het eens met myn te <rhyme label="c" type="f" corresp="#s1:l5">wagen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">t' Wyl hier niemant is <rhyme label="d" type="m" corresp="#s1:l6">omtrent</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'k Sal ik zweerje by myn <rhyme label="a" type="f">Soolen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Soenen dat uw Muts af <rhyme label="b" type="m">glyd</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Want ik brand' als doove <rhyme label="a" type="f" corresp="#s2:l1">Koolen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">'k Ben ook in myn groene <rhyme label="b" type="m" corresp="#s2:l2">tyd</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">'k Wed gy siet het aen myn <rhyme label="c" type="f">oogen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat ik myn op Iouw <rhyme label="d" type="m">verlaet</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Ia ik ben als <rhyme label="c" type="f" corresp="#s2:l5">opgetogen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Leysje toe eer 't over <rhyme label="d" type="m" corresp="#s2:l6">gaet</rhyme>.</l>
      </lg>
    </lg>
