    <tags>
      <tag standard-name="gebedslied" translation="prayer">gebedslied</tag>
    </tags>
    <melody>Een meisje had een ruiter lief</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als ick peynsende ben <rhyme label="a" type="m">allien</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wat hier nae desen sal <rhyme label="a" type="m" corresp="#s1:l1">gheschien</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Salmen dan nae dit <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van elck woort <rhyme label="b" type="f" corresp="#s1:l3">reeckeningh-gheven</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wie sal dan worden bevonden <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die inde aerd nu slapen <rhyme label="a" type="m" corresp="#s2:l1">vroet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sullen op-gheweckt <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In ‘t Oordeel soo wy <rhyme label="b" type="f" corresp="#s2:l3">lesen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Komende voor Gods aenschijn <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">In Esdras leestmen <rhyme label="a" type="m" corresp="#s3:l1">openbaer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dan sal vergadert <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Lanckmoedicheyt <rhyme label="b" type="f" corresp="#s3:l3">ghepresen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Kijf, nijdt en strijt, <rhyme label="a" type="m">wellusticheyt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Paulus voor wercken des vleys <rhyme label="a" type="m" corresp="#s4:l1">uyt-leyt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Die nae ‘t vleys leeft moet <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat Hemelrijcke <rhyme label="b" type="f" corresp="#s4:l3">derven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hierom kom ick met gantscher <rhyme label="a" type="m">vlijt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Tot u o Heer <rhyme label="a" type="m" corresp="#s5:l1">ghebenedijt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Met zonden swaer <rhyme label="b" type="f">beladen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Heer gheeft my u <rhyme label="b" type="f" corresp="#s5:l3">ghenaden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ick neem dickwils een goet <rhyme label="a" type="m">opstel</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Altijt te leven nae u <rhyme label="a" type="m" corresp="#s6:l1">beval</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Daghelijcks in mijn <rhyme label="b" type="f">ghedachten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">U toe-komst te <rhyme label="b" type="f" corresp="#s6:l3">verwachten</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dan komt mijn vleys seer broos en <rhyme label="a" type="m">quaet</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Dat wil my leyden op ruymer <rhyme label="a" type="m" corresp="#s7:l1">straet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Het gheeft my quade <rhyme label="b" type="f">manieren</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Heere helpt my <rhyme label="b" type="f" corresp="#s7:l3">bestieren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dus moet ick woonen vroegh en <rhyme label="a" type="m">laet</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Al daer den Sathan rontom my <rhyme label="a" type="m" corresp="#s8:l1">gaet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die my veel pijlen doet <rhyme label="b" type="f">schieten</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Heer laet my u hulp <rhyme label="b" type="f" corresp="#s8:l3">ghenieten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ellendich en uyt dieper <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Roep ick tot u o Heere <rhyme label="a" type="m" corresp="#s9:l1">groot</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Gheeft my nieuwe <rhyme label="b" type="f">sterckheden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Sathan ‘t hooft te <rhyme label="b" type="f" corresp="#s9:l3">vertreden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Schept in my een reyn hert o <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En eenen nieuwen gheedt bick ick <rhyme label="a" type="m" corresp="#s10:l1">seer</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Laet my uyt u handt niet <rhyme label="b" type="f">vallen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Mijn kracht is niet met <rhyme label="b" type="f" corresp="#s10:l3">allen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ick weet op aerden geen beter <rhyme label="a" type="m">raet</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Als vyerich bidden vroech ende <rhyme label="a" type="m" corresp="#s11:l1">laet</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Exempel ‘t Vroucken <rhyme label="b" type="f">dede</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Met aen-houdende <rhyme label="b" type="f" corresp="#s11:l3">bede</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Al was een Rechter boos en <rhyme label="a" type="m">quaed</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Mijn Godt is volder van <rhyme label="a" type="m" corresp="#s12:l1">ghenaet</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Door hem moet men oock <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Reyn, heylich, soo wy <rhyme label="b" type="f" corresp="#s12:l3">lesen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Als ‘t Element van herte <rhyme label="a" type="m">smelt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Hemel en Aerd vergaen met <rhyme label="a" type="m" corresp="#s13:l1">ghewelt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Soo moet dan zijn ons <rhyme label="b" type="f">handel</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Oprecht en heyl’ge <rhyme label="b" type="f" corresp="#s13:l3">wandel</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Oock moeten wy dan geschickt <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Met een Godtzaligh wesen <rhyme label="a" type="m" corresp="#s14:l1">fijn</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Op dien dach haesten en <rhyme label="b" type="f">wachten</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Heer gheeft my daer toe <rhyme label="b" type="f" corresp="#s14:l3">krachten</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Nieuwe Hemelen verwachten <rhyme label="a" type="m">wy</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">In welck rechtveerdicheyt woont <rhyme label="a" type="m" corresp="#s15:l1">bly</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Als ‘t oudt sal zijn <rhyme label="b" type="f">vergangen</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Naer ‘t nieuw staat mijn <rhyme label="b" type="f" corresp="#s15:l3">verlanghen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Gheeft my ghenade o Vader <rhyme label="a" type="m">wijs</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">By u te woonen in ‘t <rhyme label="a" type="m" corresp="#s16:l1">Paradijs</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Daer groote vreughd sal <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s16:l4" met="3" type="-+">In eeuwigheyt soo wy <rhyme label="b" type="f" corresp="#s16:l3">lesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
