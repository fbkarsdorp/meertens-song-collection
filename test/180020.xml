    <melody>Ton humeur est Catherine</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Fulpe zusje, aardig <rhyme label="a" type="f">Klaasje</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">'k Ben op jouw zoo drommels <rhyme label="b" type="m">groen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Gekandalizeerde <rhyme label="a" type="f" corresp="#s1:l1">Haasje</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">'k Wouw myn schoot wel op jouw <rhyme label="b" type="m" corresp="#s1:l2">doen</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">'k Zouw u met geen hagel <rhyme label="c" type="f">raken</rhyme>;</l>
        <l id="s1:l6" met="4" type="+-">Maar met vry wat zachter <rhyme label="d" type="m">schroot</rhyme>;</l>
        <l id="s1:l7" met="4" type="+-">'k Zouw alleen myn aanleg <rhyme label="c" type="f" corresp="#s1:l5">maken</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Op uw' allerliefsten <rhyme label="d" type="m" corresp="#s1:l6">schoot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Trof ik u, ik wil wel <rhyme label="a" type="f">zweren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dat myn Filis of <rhyme label="b" type="m">Diaan</rhyme></l>
        <l id="s2:l3" met="4" type="+-">U niet zouden <rhyme label="a" type="f" corresp="#s2:l1">Aporteren</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">'k Zouw dat werkje zelf <rhyme label="b" type="m" corresp="#s2:l2">bestaan</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">'k Zouw myn Wilt het zweet <rhyme label="c" type="f">afwisschen</rhyme>;</l>
        <l id="s2:l6" met="4" type="+-">'k Zouw haar kykers, lopers, <rhyme label="d" type="m">vacht</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Lepels, bekje en pluim <rhyme label="c" type="f" corresp="#s2:l5">verfrisschen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Door myn artseny, vol <rhyme label="d" type="m" corresp="#s2:l6">kracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'k Zouw u ook geenszins <rhyme label="a" type="f">verkopen</rhyme>;</l>
        <l id="s3:l2" met="4" type="+-">Geen Polierster kreeg myn <rhyme label="b" type="m">buit</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">'k Zouw u nooit het vel <rhyme label="a" type="f" corresp="#s3:l1">afstropen</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">'k Nam dan ook een vast <rhyme label="b" type="m" corresp="#s3:l2">besluit</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Om myn roer, ter uwer <rhyme label="c" type="f">eeren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">In een boek te laten <rhyme label="d" type="m">staan</rhyme>;</l>
        <l id="s3:l7" met="4" type="+-">'k Zouw 'er wel meê <rhyme label="c" type="f" corresp="#s3:l5">Exerçeren</rhyme>;</l>
        <l id="s3:l8" met="4" type="+-">Maar geen Haas weêr schieten <rhyme label="d" type="m" corresp="#s3:l6">gaan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'k Weet ook als gy waard <rhyme label="a" type="f">genezen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dat gy al zoo mak en <rhyme label="b" type="m">tam</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Als myn kleine Prins zoud <rhyme label="a" type="f" corresp="#s4:l1">wezen</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Ja, gy zoud my als een <rhyme label="b" type="m" corresp="#s4:l2">lam</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Waar ik gaan of staan zouw <rhyme label="c" type="f">volgen</rhyme>;</l>
        <l id="s4:l6" met="4" type="+-">Daarom suiker zoete <rhyme label="d" type="m">meid</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Toond u langer niet <rhyme label="c" type="f" corresp="#s4:l5">verbolgen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">'t Roer word op u <rhyme label="d" type="m" corresp="#s4:l6">aangeleid</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
