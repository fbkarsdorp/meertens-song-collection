<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>190475</id>
    <date>
      <year-start>1788</year-start>
      <year-end>1788</year-end>
    </date>
    <tags/>
    <melody>Quand la bergère vient des champs</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Kom jonge spruiten zingt met <rhyme label="a" type="m">my</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ter eere van de <rhyme label="a" type="m" corresp="#s1:l1">Burgery</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En juichen wy met bly <rhyme label="b" type="m">gemoed</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Oranje bloeje, zyn Stamboom <rhyme label="c" type="f">groeje</rhyme>;</l>
        <l id="s1:l5" met="2" type="-+">In Heil en <rhyme label="b" type="m" corresp="#s1:l3">spoed</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Onnoosle Liefde en <rhyme label="a" type="m">Kindervreugd</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Leer ons in onze teere <rhyme label="a" type="m" corresp="#s2:l1">jeugd</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Oranje zy ons <rhyme label="b" type="m">toeverlaat</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Beschaafde Vryheid, en waare <rhyme label="c" type="f">Blyheid</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Voor deezen <rhyme label="b" type="m" corresp="#s2:l3">Staat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gehoorzaam aan zyn <rhyme label="a" type="m">Overheid</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat Vader en dat Moeder <rhyme label="a" type="m" corresp="#s3:l1">zeit</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Tot 's Kinders nut, tot hunne <rhyme label="b" type="m">Vreugd</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Steeds op te merken, in onze <rhyme label="c" type="f">werken</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Op 't pad der <rhyme label="b" type="m" corresp="#s3:l3">Deugd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Het kwaad gezelschap te <rhyme label="a" type="m">ontvliên</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Aan stille vreugd ons hartje <rhyme label="a" type="m" corresp="#s4:l1">biên</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">By Meester of by <rhyme label="b" type="m">Naaimatres</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ons diverteeren, en naarstig <rhyme label="c" type="f">leeren</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Aan onze <rhyme label="b" type="m" corresp="#s4:l3">Les</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En dan Speelnootjes zoet <rhyme label="a" type="m">gespeeld</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Een Prinseliedje bly <rhyme label="a" type="m" corresp="#s5:l1">gekweelt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat wy Oranjes jeugdig <rhyme label="b" type="m">Kroost</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">In ouderdagen, ons Lied <rhyme label="c" type="f">opdragen</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Als onze <rhyme label="b" type="m" corresp="#s5:l3">troost</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Oorlof dan Leydsche <rhyme label="a" type="m">Kinderschaar</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Komt dat u Lied met onze <rhyme label="a" type="m" corresp="#s6:l1">paar</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">E zingt tot heil van Kerk en <rhyme label="b" type="m">Land</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Met hart en handen, d'Oranje <rhyme label="c" type="f">Panden</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">En d'Eendragts <rhyme label="b" type="m" corresp="#s6:l3">Band</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
