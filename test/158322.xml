    <tags/>
    <melody>Hoe lig ik hier in deze ellende</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DUs langh heb ick de Aerd' <rhyme label="a" type="f">betreden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Snel sijn mijn Iaren heen <rhyme label="b" type="m">gegaen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Nu legh ick in haer schoot <rhyme label="a" type="f" corresp="#s1:l1">beneden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Het nare Graf heeft my <rhyme label="b" type="m" corresp="#s1:l2">om-vaen</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Hier legh ick tot een spijs der <rhyme label="c" type="f">dieren</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Die door mijn gantsche leden <rhyme label="c" type="f" corresp="#s1:l5">swieren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hier legh ick, komt wilt my <rhyme label="a" type="f">aen-schouwen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hier legh ick sonder gelt en <rhyme label="b" type="m">goet</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Hy is een dwaes, die meynt te <rhyme label="a" type="f" corresp="#s2:l1">bouwen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Op 't geen hy eens verlaten <rhyme label="b" type="m" corresp="#s2:l2">moet</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Hier legh ick, en sal <rhyme label="c" type="f">weder-komen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Tot Aerd', daer van ick ben <rhyme label="c" type="f" corresp="#s2:l5">genomen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hier legh ick nu alleen ter <rhyme label="a" type="f">zijden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Mijn Vrienden dencken niet om <rhyme label="b" type="m">my</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Die ick wel eer placht te <rhyme label="a" type="f" corresp="#s3:l1">verblijden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die komen my in t' Graf niet <rhyme label="b" type="m" corresp="#s3:l2">by</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Maer als de Doodt haer port te <rhyme label="c" type="f">sterven</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dan moeten sy dees plaets <rhyme label="c" type="f" corresp="#s3:l5">be-erven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al legh ick hier seer wijt <rhyme label="a" type="f">verschoven</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">t' Is voor het Lichaem maer <rhyme label="b" type="m">alleen</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Mijn ziel is by mijn Godt hier <rhyme label="a" type="f" corresp="#s4:l1">boven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Daer meed' ick wederom <rhyme label="b" type="m" corresp="#s4:l2">ver-een</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Als dit verderflijck is <rhyme label="c" type="f">vergangen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dan sal ick eerst dit deel <rhyme label="c" type="f" corresp="#s4:l5">ontfangen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ick heb voorwaer gantsch niet te <rhyme label="a" type="f">klagen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Want 't is oock mijn Voor-ouders <rhyme label="b" type="m">lot</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Hoe Rijck, hoe Wijs, hoe Oudt van <rhyme label="a" type="f" corresp="#s5:l1">dagen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Iae Christus ware Mensch en <rhyme label="b" type="m" corresp="#s5:l2">Godt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Het Graf oock hebben moeten <rhyme label="c" type="f">erven</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En oock die nae my sullen <rhyme label="c" type="f" corresp="#s5:l5">sterven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ick wil op mijnen Godt <rhyme label="a" type="f">bertrouwen</rhyme>;</l>
        <l id="s6:l2" met="4" type="-+">Want dese oogen sullen <rhyme label="b" type="m">klaer</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Mijn Salighmaker noch <rhyme label="a" type="f" corresp="#s6:l1">aenschouwen</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">En dese Huyt sal eens hier <rhyme label="b" type="m" corresp="#s6:l2">naer</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Noch wederom mijn vleesch <rhyme label="c" type="f">bekleeden</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Schoon 't al nu is tot stof <rhyme label="c" type="f" corresp="#s6:l5">vertreden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die wel doet, sal voor 't Graf niet <rhyme label="a" type="f">vreesen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Ons Lichaem wordt hier maer <rhyme label="b" type="m">gezaeyt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En 't sal daer nae verheerlijckt <rhyme label="a" type="f" corresp="#s7:l1">wesen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dan wordt d'onsterflijckheyt <rhyme label="b" type="m" corresp="#s7:l2">gemaeyt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">'t Verderffelijck wordt hier <rhyme label="c" type="f">gegeven</rhyme>;</l>
        <l id="s7:l6" met="4" type="-+">Om onverderffelijck te <rhyme label="c" type="f" corresp="#s7:l5">leven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O! Heere Iesu, wilt doch <rhyme label="a" type="f">komen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Verlos my uyt dees leege <rhyme label="b" type="m">stant</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat ick mach worden <rhyme label="a" type="f" corresp="#s8:l1">op-genomen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Daer boven in mijn <rhyme label="b" type="m" corresp="#s8:l2">Vader-landt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">En weder met mijn ziel <rhyme label="c" type="f">versamen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Om eeuwigh u te prijsen, <rhyme label="c" type="f" corresp="#s8:l5">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
