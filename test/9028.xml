  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEt is ghewiss'lijck an de <rhyme label="a" type="m">Tijdt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat GOdes Soon sal <rhyme label="b" type="f">comen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">In syne groote <rhyme label="a" type="m" corresp="#s1:l1">Heerlijckheyt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Te richten boos' end' <rhyme label="b" type="f" corresp="#s1:l2">vromen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dan sal dat lachen worden <rhyme label="c" type="m">duyr</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Wann' alles sal vergaen in <rhyme label="c" type="m" corresp="#s1:l5">t'Vuyr</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Als Petrus daer van <rhyme label="d" type="f">schrijvet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">D'Basuynen sal men hooren <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Aen alles Werrelts <rhyme label="b" type="f">keere</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Daer op dan sullen haest <rhyme label="a" type="m" corresp="#s2:l1">opstaen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">All' Dooden wijdt end <rhyme label="b" type="f" corresp="#s2:l2">veere</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Maer die hier noch int leven <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die sal de HEer van stonden <rhyme label="c" type="m" corresp="#s2:l5">aen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Verand'ren end' <rhyme label="d" type="f">vernieuwen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer na men haest aflesen <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Den Boeck g'heel vol <rhyme label="b" type="f">gheschreven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wat d'Menschen Oud' en Jongen <rhyme label="a" type="m" corresp="#s3:l1">all'</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hier hebben tsaem <rhyme label="b" type="f" corresp="#s3:l2">bedreven</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Daer van ghewis een <rhyme label="c" type="m">yederman</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Sal hooren wat hy heeft <rhyme label="c" type="m" corresp="#s3:l5">ghedaen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">In synen gantschen <rhyme label="d" type="f">leven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O wee dien, die hier heeft met <rhyme label="a" type="m">smaet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Des HEEren woort <rhyme label="b" type="f">verachtet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En slechts op Eerden vroech end' <rhyme label="a" type="m" corresp="#s4:l1">spaet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Nae Rijckdom groot <rhyme label="b" type="f" corresp="#s4:l2">ghetrachtet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Hy sal voorwaer g'heel koudt <rhyme label="c" type="m">bestaen</rhyme></l>
        <l id="s4:l6" met="4" type="-+">End met den Sathan moeten <rhyme label="c" type="m" corresp="#s4:l5">gaen</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Van Christo in die <rhyme label="d" type="f">Helle</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Jesu helpt ter selven <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van weghen dijner <rhyme label="b" type="f">wonden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Dat ick int Boeck der <rhyme label="a" type="m" corresp="#s5:l1">salicheyt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Gheteeckent werd <rhyme label="b" type="f" corresp="#s5:l2">ghevonden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Daer aen my geenen twijffel <rhyme label="c" type="m">quelt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Want ghy den Vyandt hebt <rhyme label="c" type="m" corresp="#s5:l5">ghevelt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">End myne schuld' <rhyme label="d" type="f">betalet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dies halven myn Voorspreker <rhyme label="a" type="m">sy</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wanneer ghy sult <rhyme label="b" type="f">verschijnen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">End' leest my wt den Boecke <rhyme label="a" type="m" corresp="#s6:l1">vry</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In d'welcken staen die <rhyme label="b" type="f" corresp="#s6:l2">dijnen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Op dat ick met den Broed'ren <rhyme label="c" type="m">myn</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Mit dy gae tot den Hemel <rhyme label="c" type="m" corresp="#s6:l5">in</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Dien ghy ons hebt <rhyme label="d" type="f">verworven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Jesu Christ ghy maeckt het <rhyme label="a" type="m">lang'</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Mit dijnen Jogsten <rhyme label="b" type="f">Daghe</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Den Menschen wort op Eerden <rhyme label="a" type="m" corresp="#s7:l1">bang'</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van weghen veler <rhyme label="b" type="f" corresp="#s7:l2">plagen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Kom doch, kom doch, ghy Rechter <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s7:l6" met="4" type="-+">En brengt ons in der G'naden <rhyme label="c" type="m" corresp="#s7:l5">schoot</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Vry van all' <rhyme label="d" type="f">quaden</rhyme>.</l>
      </lg>
    </lg>
  </text>
