      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">1.NU in de Steden, en op't <rhyme label="a" type="m">Landt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">(Na 's werelts <rhyme label="b" type="f">wel-behagen</rhyme>,)</l>
        <l id="s1:l3" met="4" type="-+">Siet men den Meye-boom <rhyme label="a" type="m" corresp="#s1:l1">geplant</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Siet die na weynigh <rhyme label="b" type="f" corresp="#s1:l2">dagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy is berooft van loof, en <rhyme label="a" type="m">bladt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van schoonheyt en <rhyme label="b" type="f">coleuren</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Leert u dat 's werelts vreughden <rhyme label="a" type="m" corresp="#s2:l1">radt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Verand're zal in <rhyme label="b" type="f" corresp="#s2:l2">treuren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laet dan 's werelts Meye-boom <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En beter stelt voor <rhyme label="b" type="f">oogen</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Sint Jacob wiens vreught noyt <rhyme label="a" type="m" corresp="#s3:l1">vergaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Noch leven zal <rhyme label="b" type="f" corresp="#s3:l2">verdroogen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wenst ghy tot sijn vreughden en <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Te komen hoogh <rhyme label="b" type="f">verheven</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">'t Zal geschien, soo ghy <rhyme label="a" type="m" corresp="#s4:l1">metter-daet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Na-volght sijn heyligh <rhyme label="b" type="f" corresp="#s4:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Rechtveerdigh is van <rhyme label="a" type="m">yegelijck</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Om sijn deught (soo wy <rhyme label="b" type="f">weten</rhyme>)</l>
        <l id="s5:l3" met="4" type="-+">En om dat hy d'Heer was <rhyme label="a" type="m" corresp="#s5:l1">ghelijck</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Jesus Broeder <rhyme label="b" type="f" corresp="#s5:l2">geheten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Zijn ziel ende leden <rhyme label="a" type="m">gebruyckt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Alleen tot Godes <rhyme label="b" type="f">eeren</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Hy schout, al dat na sonden <rhyme label="a" type="m" corresp="#s6:l1">ruyckt</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Deughden socht te <rhyme label="b" type="f" corresp="#s6:l2">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy dronck noyt yet, dat droncke <rhyme label="a" type="m">maeckt</rhyme>.</l>
        <l id="s7:l2" met="3" type="-+">Met Linnen hem <rhyme label="b" type="f">bekleden</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Noyt vleesch; maer water en broodt <rhyme label="a" type="m" corresp="#s7:l1">smaeckt</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Door 't vasten temt sijn <rhyme label="b" type="f" corresp="#s7:l2">leden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">By nacht en dagen bidt soo <rhyme label="a" type="m">veel</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dat sijn twee knyen <rhyme label="b" type="f">waren</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Harder als d'huyt van de <rhyme label="a" type="m" corresp="#s8:l1">Cameel</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Soo de Schrijvers <rhyme label="b" type="f" corresp="#s8:l2">verklaren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Om sijn heyligh leven, <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Laten hem toe de <rhyme label="b" type="f">Ioden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">'t Heylighste des tempels te <rhyme label="a" type="m" corresp="#s9:l1">treen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">'t Welck d'and're was <rhyme label="b" type="f" corresp="#s9:l2">verboden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wordt Bisschop tot <rhyme label="a" type="m">Ierusalem</rhyme>;</l>
        <l id="s10:l2" met="3" type="-+">Dertigh Iaer daer <rhyme label="b" type="f">regeerden</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">Ioden ontelbaer door sijn <rhyme label="a" type="m" corresp="#s10:l1">stem</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Tot 't Roomsch geloof <rhyme label="b" type="f" corresp="#s10:l2">bekeerden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Nu oudt ses-en-negentigh <rhyme label="a" type="m">Iaer</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Gebracht van d'Ioodsche <rhyme label="b" type="f">scharen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Dat hy van Godes Soon, voor <rhyme label="a" type="m" corresp="#s11:l1">haer</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Getuyg'nis souw <rhyme label="b" type="f" corresp="#s11:l2">verklaren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Van 'sTempels alderhooghste <rhyme label="a" type="m">top</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Verklaert van Godes <rhyme label="b" type="f">Soone</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Met luyde stemme Sint <rhyme label="a" type="m" corresp="#s12:l1">Jacob</rhyme>:</l>
        <l id="s12:l4" met="3" type="-+">Hy zit in 's Hemels <rhyme label="b" type="f" corresp="#s12:l2">throone</rhyme>,</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hy zit aen 's Vaders Rechter <rhyme label="a" type="m">zy</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Hy zal, (weet dit, o <rhyme label="b" type="f">Ioden</rhyme>!</l>
        <l id="s13:l3" met="4" type="-+">Oordeele die leven dat <rhyme label="a" type="m" corresp="#s13:l1">by</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Oordeele zal de <rhyme label="b" type="f" corresp="#s13:l2">dooden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Om de waerheydt tot Godes <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">De Ioden quaedt hem <rhyme label="b" type="f">haten</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Sy stooten hem van boven <rhyme label="a" type="m" corresp="#s14:l1">neer</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Dat hy valt op de <rhyme label="b" type="f" corresp="#s14:l2">straten</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Hy bidt gequetst heel tot der <rhyme label="a" type="m">doodt</rhyme>:</l>
        <l id="s15:l2" met="3" type="-+">O Heer! wilt doch <rhyme label="b" type="f">vergeten</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Haer misdaet, door uw' liefde <rhyme label="a" type="m" corresp="#s15:l1">groot</rhyme>.</l>
        <l id="s15:l4" met="3" type="-+">Wat zy doen, geenzins <rhyme label="b" type="f" corresp="#s15:l2">weten</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Met een volders stock, als hy <rhyme label="a" type="m">bidt</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Is hy voort doodt <rhyme label="b" type="f">geslagen</rhyme>.</l>
        <l id="s16:l3" met="4" type="-+">Sijn ziele tot 's Hemels <rhyme label="a" type="m" corresp="#s16:l1">besit</rhyme></l>
        <l id="s16:l4" met="3" type="-+">D'Engelen vroolijck <rhyme label="b" type="f" corresp="#s16:l2">dragen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Tot Godes eer uw' heel <rhyme label="a" type="m">besteet</rhyme>.</l>
        <l id="s17:l2" met="3" type="-+">Voor Godes naem wilt <rhyme label="b" type="f">strijden</rhyme>.</l>
        <l id="s17:l3" met="4" type="-+">Niet schadelijck drinckt, ofte <rhyme label="a" type="m" corresp="#s17:l1">eet</rhyme>.</l>
        <l id="s17:l4" met="3" type="-+">Wilt u geloof <rhyme label="b" type="f" corresp="#s17:l2">belijden</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Sint Iacob: krijght ons <rhyme label="a" type="m">allegaer</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Door uw' gebedt, en <rhyme label="b" type="f">wonden</rhyme>;</l>
        <l id="s18:l3" met="4" type="-+">Dat wy in 't sterven zijnen <rhyme label="a" type="m" corresp="#s18:l1">klaer</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">En vry van groote <rhyme label="b" type="f" corresp="#s18:l2">zonden</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Maeckt van ons Iesu die zijn <rhyme label="a" type="m">stof</rhyme></l>
        <l id="s19:l2" met="3" type="-+">Nu sulcken <rhyme label="b" type="f">Meye-boomen</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Waer aen dorheydt, noch <rhyme label="a" type="m" corresp="#s19:l1">ydel-lof</rhyme></l>
        <l id="s19:l4" met="3" type="-+">Aen bloem, of vrucht mach <rhyme label="b" type="f" corresp="#s19:l2">komen</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Ons geloofs wortel van <rhyme label="a" type="m">kett'ry</rhyme>,</l>
        <l id="s20:l2" met="3" type="-+">En zonden wilt <rhyme label="b" type="f">bewaren</rhyme>.</l>
        <l id="s20:l3" met="4" type="-+">Laet onse Ziel van 't lichaem <rhyme label="a" type="m" corresp="#s20:l1">vry</rhyme></l>
        <l id="s20:l4" met="3" type="-+">Tot 's Hemels vreughden <rhyme label="b" type="f" corresp="#s20:l2">varen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
