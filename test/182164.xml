  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Komt helden laat ons nu eens <rhyme label="a" type="f">vegen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En laggen om de zotte <rhyme label="b" type="m">Min</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De Liefde maakt het hert <rhyme label="a" type="f" corresp="#s1:l1">verlegen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daar ons de Wyn brengt blydschap <rhyme label="b" type="m" corresp="#s1:l2">in</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Baggus geeft ons den heyl en <rhyme label="a" type="f" corresp="#s1:l1">zegen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En band de zorgen uit ons <rhyme label="b" type="m" corresp="#s1:l2">zin</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Silvia weg ik wil niet <rhyme label="a" type="f">kussen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dewyl de Wyn het hert <rhyme label="b" type="m">bekoort</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Die Nectar kan myn vlamme <rhyme label="a" type="f" corresp="#s2:l1">blussen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En brengen myn de vreugde <rhyme label="b" type="m" corresp="#s2:l2">voort</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Kom Schenker schenkt eens <rhyme label="a" type="f" corresp="#s2:l1">ondertussen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Eer dat ons Venus de rust <rhyme label="b" type="m" corresp="#s2:l2">verstoort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ey ziet de Wyn eens <rhyme label="a" type="f">zegenpralen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Zy lagt ons toe met bly <rhyme label="b" type="m">gelaat</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Den drank verligt ons van veel <rhyme label="a" type="f" corresp="#s3:l1">qualen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En brengt ons in geruster <rhyme label="b" type="m" corresp="#s3:l2">staat</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Ik voel de blydschap in my <rhyme label="a" type="f" corresp="#s3:l1">dalen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Ey minden leeft naar mynen <rhyme label="b" type="m" corresp="#s3:l2">raad</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Drinkt steeds met lusten voor al u <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En laat Silvia en Laura <rhyme label="b" type="m">staan</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Zo zal de kragt u nimmer <rhyme label="a" type="f" corresp="#s4:l1">begeven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">en hy gerust ten grave <rhyme label="b" type="m" corresp="#s4:l2">gaan</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Komt dan, komt drinkt â€˜er al u <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En vat het glaasje vrolyk <rhyme label="b" type="m" corresp="#s4:l2">aan</rhyme>.</l>
      </lg>
    </lg>
  </text>
