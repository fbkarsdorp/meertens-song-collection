    <tags/>
    <melody>Rein maagdje met eer</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe lang zal blijven <rhyme label="a" type="f">malen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Vw’ meulen <rhyme label="b" type="m">Calvinist</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Ter wijl ghy wild <rhyme label="a" type="f" corresp="#s1:l1">bepalen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Het vleesch van Iesus <rhyme label="b" type="m" corresp="#s1:l2">Christ</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met een zoo engen <rhyme label="c" type="m">muir</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Als of het van te <rhyme label="d" type="f">voren</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Niet boven de <rhyme label="c" type="m" corresp="#s1:l5">natuir</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Was uit een Maegd <rhyme label="d" type="f" corresp="#s1:l6">geboren</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Benaudt soo waerde <rhyme label="a" type="f">leden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Besluit zoo reinen <rhyme label="b" type="m">vleis</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Met plaetsen, noch met <rhyme label="a" type="f" corresp="#s2:l1">steden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gelijkmen nae den <rhyme label="b" type="m" corresp="#s2:l2">eisch</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Der dingen is <rhyme label="c" type="m">gewoon</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">De onze te <rhyme label="d" type="f">besluiten</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Want ’t vleesch van Godes <rhyme label="c" type="m" corresp="#s2:l5">zoon</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Behoordt wel uit te <rhyme label="d" type="f" corresp="#s2:l6">muiten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy liet het ook wel <rhyme label="a" type="f">blijken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wanneer hy op de <rhyme label="b" type="m">wegt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Verschijnenende, dee <rhyme label="a" type="f" corresp="#s3:l1">strijken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Aen Saulum, d’arme <rhyme label="b" type="m" corresp="#s3:l2">knecht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">De roo bebloede <rhyme label="c" type="m">Vaen</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Betuigende <rhyme label="d" type="f">midsdezen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat hy daer op de <rhyme label="c" type="m" corresp="#s3:l5">baen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">End’ in zijn Throon kon <rhyme label="d" type="f" corresp="#s3:l6">wezen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En alsment wil <rhyme label="a" type="f">verzinnen</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Natuir schrikt even <rhyme label="b" type="m">zeer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Dat zich twee lijven <rhyme label="a" type="f" corresp="#s4:l1">vinnen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Te zamen min oft <rhyme label="b" type="m" corresp="#s4:l2">meer</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Op een gejuiste <rhyme label="c" type="m">stee</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">Dan dat ter zelver <rhyme label="d" type="f">stonden</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Een eenig lijff op <rhyme label="c" type="m" corresp="#s4:l5">twee</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Contreyen werd <rhyme label="d" type="f" corresp="#s4:l6">gevonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dit kanmen doch <rhyme label="a" type="f">ontkennen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">In’t lichaem Christi <rhyme label="b" type="m">niet</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Ten waer men wilde <rhyme label="a" type="f" corresp="#s5:l1">schennen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">’t Geloof ’t welk ons <rhyme label="b" type="m" corresp="#s5:l2">gebiet</rhyme></l>
        <l id="s5:l5" met="3" type="-+">De toegeslote <rhyme label="c" type="m">steen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Daer deur het wist te <rhyme label="d" type="f">sporen</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">En d’alder reinste <rhyme label="c" type="m" corresp="#s5:l5">le’en</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Daer uit het wierd <rhyme label="d" type="f" corresp="#s5:l6">geboren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Zoo veel als nu de <rhyme label="a" type="f">reste</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Belangt, zal een <rhyme label="b" type="m">kameel</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Den grootste, en den <rhyme label="a" type="f" corresp="#s6:l1">beste</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Verwinnen in dit <rhyme label="b" type="m" corresp="#s6:l2">deel</rhyme>?</l>
        <l id="s6:l5" met="3" type="-+">Ach! als ghy dezen <rhyme label="c" type="m">ziet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Wel deur een naeld <rhyme label="d" type="f">passeren</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Zoo’n neemt dit voordeel <rhyme label="c" type="m" corresp="#s6:l5">niet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Van ’t lichaem onz liefs <rhyme label="d" type="f" corresp="#s6:l6">Heren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">’t Is waer ’t sijn vreemde <rhyme label="a" type="f">zaken</rhyme>:</l>
        <l id="s7:l2" met="3" type="-+">Maer die in d’Aerdsche <rhyme label="b" type="m">baen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wel zonder zien en <rhyme label="a" type="f" corresp="#s7:l1">rakken</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Kon door de scharen <rhyme label="b" type="m" corresp="#s7:l2">gaen</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Zal die ter wyl hy <rhyme label="c" type="m">nu</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Ten Hemel zit <rhyme label="d" type="f">gerezen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">In mogentheyd by <rhyme label="c" type="m" corresp="#s7:l5">u</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Van krachten minder <rhyme label="d" type="f" corresp="#s7:l6">wezen</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dit’s tegen alle <rhyme label="a" type="f">rede</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van kennelijk <rhyme label="b" type="m">gescheid</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Al ziet ghy dan zijn <rhyme label="a" type="f" corresp="#s8:l1">leden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Niet uitterlijk <rhyme label="b" type="m" corresp="#s8:l2">verspreid</rhyme>;</l>
        <l id="s8:l5" met="3" type="-+">Gelooft des <rhyme label="c" type="m">niettemin</rhyme>:</l>
        <l id="s8:l6" met="3" type="-+">End’ uw’ vervoogde <rhyme label="d" type="f">zinnen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Haer Zaligmaker, <rhyme label="c" type="m" corresp="#s8:l5">in</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Zijn Hosty zullen <rhyme label="d" type="f" corresp="#s8:l6">vinnen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O Iesu Heer der <rhyme label="a" type="f">Heren</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">Al sijn mijn zinnen <rhyme label="b" type="m">doof</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Die hier in gans <rhyme label="a" type="f" corresp="#s9:l1">failjeren</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">Nochtans mijn vast <rhyme label="b" type="m" corresp="#s9:l2">geloof</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Gegrond op’t zwaer <rhyme label="c" type="m">gewigt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Van uw’ gegeven <rhyme label="d" type="f">oorde</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Weerstaet hier haer <rhyme label="c" type="m" corresp="#s9:l5">gezigt</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">En houd haer aen uw’ <rhyme label="d" type="f" corresp="#s9:l6">woorden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
