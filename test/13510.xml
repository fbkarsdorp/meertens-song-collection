    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">geestelijk lied</tag>
    </tags>
    <melody>Erstanden ist der heilig Christ, der aller Welt ein Tröster ist</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">D'Heer Christus, die ons Hey-land <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Is heden opgestaen <rhyme label="a" type="m" corresp="#s1:l1">gewis</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dit tuigen ons de Eng'len <rhyme label="b" type="m">klaer</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Gesien van vrouwen <rhyme label="b" type="m" corresp="#s1:l3">openbaer</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+"><rhyme label="c" type="m">Alleluja</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Des morgens vroegh so quamen <rhyme label="a" type="m">sy</rhyme></l>
        <l id="s2:l2" met="4" type="-+">By 't graf met diere <rhyme label="a" type="m" corresp="#s2:l1">specery</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Bekommert zynde, hoe <rhyme label="b" type="m">aldaer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">De steen van 't graf gewentelt <rhyme label="b" type="m" corresp="#s2:l3">waer</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+"><rhyme label="c" type="m">Alleluja</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Twee Engelen in 't wit <rhyme label="a" type="m">gekleedt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die seiden: Hy en is hier <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Die gy hier soekt is <rhyme label="b" type="m">opgestaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En van de dooden wegh <rhyme label="b" type="m" corresp="#s3:l3">gegaen</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+"><rhyme label="c" type="m">Alleluja</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">D'Heer Christus, die ons Heiland <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Is heden op- gestaen <rhyme label="a" type="m" corresp="#s4:l1">gewis</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dit tuigen ons de Eng'len <rhyme label="b" type="m">klaer</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Gesien van vrouwen <rhyme label="b" type="m" corresp="#s4:l3">openbaer</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+"><rhyme label="c" type="m">Alleluja</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy sekerlik verresen <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dit zy u tot <rhyme label="a" type="m" corresp="#s5:l1">getuigenis</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Gy vindt Hem in het graf niet <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Sijn linnen-doeken liggen <rhyme label="b" type="m" corresp="#s5:l3">neêr</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+"><rhyme label="c" type="m">Alleluja</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gaet in het graf en twyfelt <rhyme label="a" type="m">niet</rhyme>;</l>
        <l id="s6:l2" met="4" type="-+">Want gy aldaer Hem niet en <rhyme label="a" type="m" corresp="#s6:l1">siet</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Verkondight zulx der Jong'ren <rhyme label="b" type="m">schaer</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat sy ook werden dit <rhyme label="b" type="m" corresp="#s6:l3">gewaer</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+"><rhyme label="c" type="m">Alleluja</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Gy Christenheid nu juicht <rhyme label="a" type="m">voortaen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat Hy is weder <rhyme label="a" type="m" corresp="#s7:l1">opgestaen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">De welk voor ons aen 't kruitse <rhyme label="b" type="m">leed</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En ons verworf Sijns Vaders <rhyme label="b" type="m" corresp="#s7:l3">vreed'</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+"><rhyme label="c" type="m">Alleluja</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
