  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Lieve dochters vol van <rhyme label="a" type="f">jeughden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">In den Geest, en in ‘t <rhyme label="b" type="m">ghemoet</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Hoort eens na mijn dichten <rhyme label="b" type="m" corresp="#s1:l2">soet</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Laet Godt wesen al u <rhyme label="a" type="f" corresp="#s1:l1">vreughde</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Schout de werelt met haer <rhyme label="c" type="m">schijn</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Want ‘t en is maer Ziels <rhyme label="c" type="m" corresp="#s1:l5">fenijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Can de werelt u <rhyme label="a" type="f">vermaken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En de Creaturen <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die dickwils de Ziele <rhyme label="b" type="m" corresp="#s2:l2">doon</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hoe veel soeter moet hy <rhyme label="a" type="f" corresp="#s2:l1">smaken</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Die het al gheschapen <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En waer door de Ziele <rhyme label="c" type="m" corresp="#s2:l5">leeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sijnen Geest met soet <rhyme label="a" type="f">bedouwen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Geeft hy in der Zielen <rhyme label="b" type="m">gront</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die hy met sijn Liefde <rhyme label="b" type="m" corresp="#s3:l2">wont</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dats’ haer niet en can <rhyme label="a" type="f" corresp="#s3:l1">onthouwen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Hem te loven deur het <rhyme label="c" type="m">pant</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dat hy in der herten <rhyme label="c" type="m" corresp="#s3:l5">sant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">‘t Schijnt wel voor een corte <rhyme label="a" type="f">stonde</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Dat de werelt soet toe <rhyme label="b" type="m">lacht</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En belooft veel in ‘t <rhyme label="b" type="m" corresp="#s4:l2">gedacht</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Maer als Godt verdrijft de <rhyme label="a" type="f" corresp="#s4:l1">sonde</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Hem terstont dan <rhyme label="c" type="m">openbaert</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Nieuwen Hemel nieuwe <rhyme label="c" type="m" corresp="#s4:l5">aerd</rhyme>’.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Al wat hier in <rhyme label="a" type="f">schadu-beelde</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Schoon en lieffelijck <rhyme label="b" type="m">vertoont</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Dat wert hondert-fout <rhyme label="b" type="m" corresp="#s5:l2">geloont</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Met een over soete <rhyme label="a" type="f" corresp="#s5:l1">weelde</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Deur den rijckdom in ‘t <rhyme label="c" type="m">gemoet</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Als men schaduw’ van hem <rhyme label="c" type="m" corresp="#s5:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">D’ingheschapen soete <rhyme label="a" type="f">minne</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">‘t Vrolijck wesen van de <rhyme label="b" type="m">Ziel</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Soo het op geen aertsch en <rhyme label="b" type="m" corresp="#s6:l2">viel</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">‘t Kreegh volcomen vreughde <rhyme label="a" type="f" corresp="#s6:l1">innem</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Vreught en blyschap sonder <rhyme label="c" type="m">endt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Soo het hem ten Hemel <rhyme label="c" type="m" corresp="#s6:l5">wend</rhyme>’.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Laet u alle dingen <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Van het geen ghy hoort en <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Maer en geefts’ u Liefde <rhyme label="b" type="m" corresp="#s7:l2">niet</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Noch en laets’ u niet <rhyme label="a" type="f" corresp="#s7:l1">beheeren</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Soo en wort ghy niet haer <rhyme label="c" type="m">slaef</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Maer sy dienen u een <rhyme label="c" type="m" corresp="#s7:l5">gaef</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">‘t Sou voorwaer u seer <rhyme label="a" type="f">krencken</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Liet ghy alle dingen <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Om verbeelden uwen <rhyme label="b" type="m" corresp="#s8:l2">sin</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Wilt maer op de Bruyloft <rhyme label="a" type="f" corresp="#s8:l1">dencken</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Die Godt voor u heeft <rhyme label="c" type="m">bereyt</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Soo ghy hem niet af en <rhyme label="c" type="m" corresp="#s8:l5">seyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Neemt wel waer des oorspronghs <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Wat het leven geeft of <rhyme label="b" type="m">steelt</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">‘t Lichaem streckt u tot een <rhyme label="b" type="m" corresp="#s9:l2">beelt</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Geen Fenijn en suldijt <rhyme label="a" type="f" corresp="#s9:l1">geven</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Maer al wat hem smaeckt <rhyme label="c" type="m">gesont</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Doet oock soo der Zielen <rhyme label="c" type="m" corresp="#s9:l5">wond</rhyme>’.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Siet den Heer spreeckt als <rhyme label="a" type="f">verwondert</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Waerom comt ghy niet tot <rhyme label="b" type="m">mijn</rhyme>?</l>
        <l id="s10:l3" met="4" type="+-">Waerom blijft ghy in de <rhyme label="b" type="m" corresp="#s10:l2">pijn</rhyme>?</l>
        <l id="s10:l4" met="4" type="+-">Waerom hebt g’u <rhyme label="a" type="f" corresp="#s10:l1">afghesondert</rhyme>?</l>
        <l id="s10:l5" met="4" type="+-">Comt en laet den slijck-put <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Wilt u in mijn Liefde <rhyme label="c" type="m" corresp="#s10:l5">baen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Liefde can de Ziel <rhyme label="a" type="f">ghenesen</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Want s’uyt Liefden is <rhyme label="b" type="m">ghevloeyt</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">En met Liefde wort <rhyme label="b" type="m" corresp="#s11:l2">besproeyt</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Liefd’ is een onsichtbaer <rhyme label="a" type="f" corresp="#s11:l1">wesen</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Daerom wert de Ziel <rhyme label="c" type="m">ghevoed</rhyme>’</l>
        <l id="s11:l6" met="4" type="+-">Door ‘t onsichtbaer eeuwigh <rhyme label="c" type="m" corresp="#s11:l5">goet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
