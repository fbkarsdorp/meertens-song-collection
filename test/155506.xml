    <tags/>
    <melody>Florida zo het wezen mag</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DOe Israel reysd mat en <rhyme label="a" type="m">moe</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Door de woestijn na Cana'n <rhyme label="a" type="m" corresp="#s1:l1">toe</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Verhongert door <rhyme label="b" type="f">verlangen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Soo is haer op de wegh <rhyme label="c" type="m">ontmoet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Een Koperen <rhyme label="c" type="m" corresp="#s1:l4">gebroedt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En aerdt van boose <rhyme label="b" type="f" corresp="#s1:l3">Slangen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Diens doodlijck gift dat is <rhyme label="a" type="m">geweest</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Een scheytsel van het Lijf en <rhyme label="a" type="m" corresp="#s2:l1">Gheest</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo dat in korte <rhyme label="b" type="f">daghen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Veel Isra'lijtsche <rhyme label="c" type="m">Wandelaers</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Verstickt in veel <rhyme label="c" type="m" corresp="#s2:l4">gevaers</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Langhs de Woestijne <rhyme label="b" type="f" corresp="#s2:l3">laghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer Moses die en wacht niet <rhyme label="a" type="m">langh</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Om uyt Godts last een kop'ren <rhyme label="a" type="m" corresp="#s3:l1">Slangh</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Voor Isr'el op te <rhyme label="b" type="f">richten</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">Die doe de selve maer <rhyme label="c" type="m">aensach</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Hoe swaer gequetst hy <rhyme label="c" type="m" corresp="#s3:l4">lach</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Gevoeld sijn pijne <rhyme label="b" type="f" corresp="#s3:l3">lichten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ons leven door de Wereldt <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Een wandel door een <rhyme label="a" type="m" corresp="#s4:l1">Wildernis</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Na 't Hof der sal'ge <rhyme label="b" type="f">zielen</rhyme>;</l>
        <l id="s4:l4" met="4" type="-+">De helsche Slangh loert over <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En schiet sijn bitt're <rhyme label="c" type="m" corresp="#s4:l4">Gal</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Om ons soo te <rhyme label="b" type="f" corresp="#s4:l3">vernielen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En 't swacke Menschelijck <rhyme label="a" type="m">geslacht</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Van hem gewondt, leydt heel <rhyme label="a" type="m" corresp="#s5:l1">versmacht</rhyme></l>
        <l id="s5:l3" met="3" type="-+">En smoort in vuyle <rhyme label="b" type="f">sonden</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">En waer 't het ooge keert of <rhyme label="c" type="m">went</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Gheen Schepsel is <rhyme label="c" type="m" corresp="#s5:l4">bekent</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat hulpe heeft <rhyme label="b" type="f" corresp="#s5:l3">gevonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer Jesus aen het kruys <rhyme label="a" type="m">gehecht</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En soo om hoogen <rhyme label="a" type="m" corresp="#s6:l1">opgerecht</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Is onse <rhyme label="b" type="f">Medicijne</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Die hem maer door 't geloof <rhyme label="c" type="m">aensiet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Gevoelt sijn <rhyme label="c" type="m" corresp="#s6:l4">ziel-verdriet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Wt Sathans beet, <rhyme label="b" type="f" corresp="#s6:l3">verdwijnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
