    <tags>
      <tag standard-name="devoot lied" translation="devotional song">devoot lied</tag>
    </tags>
    <melody>Het ging een meisje aan de kant</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Daniel Bellemans</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EVen eens ghelyck een' <rhyme label="a" type="m">Hert</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Door den heeten brandt <rhyme label="b" type="f">ontsteken</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Van den dorst, de welck' hem <rhyme label="a" type="m" corresp="#s1:l1">smert</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Wenscht naer koele <rhyme label="b" type="f" corresp="#s1:l2">water-beken</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Soo verlanght myn bangh <rhyme label="c" type="m">ghemoedt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Tot u Heer' myn hoogste <rhyme label="c" type="m" corresp="#s1:l5">goet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wanneer sal myn' droeven <rhyme label="a" type="m">gheest</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Naer uw Hemel-ryck <rhyme label="b" type="f">op-stygen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">In uw' blyde <rhyme label="a" type="m" corresp="#s2:l1">Bruyloft-feest</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Wanneêr sal ick dat <rhyme label="b" type="f" corresp="#s2:l2">verkryghen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Heer wanneêr sal dit <rhyme label="c" type="m">geschiên</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat ick u sal moghen <rhyme label="c" type="m" corresp="#s2:l5">sien</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Heer' de traentjens die ghy <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Rollen, langhs myn' droeve <rhyme label="b" type="f">wanghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Is de spys die ick <rhyme label="a" type="m" corresp="#s3:l1">gheniet</rhyme></l>
        <l id="s3:l4" met="4" type="+-">In dit myn benouwt <rhyme label="b" type="f" corresp="#s3:l2">verlanghen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Mits-men roept uyt enckel <rhyme label="c" type="m">spot</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Waer is uwen Heer' en <rhyme label="c" type="m" corresp="#s3:l5">Godt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ick word' soo my dunckt <rhyme label="a" type="m">vermoort</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als ick door myn' teere <rhyme label="b" type="f">ooren</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Menigh droef en treurigh <rhyme label="a" type="m" corresp="#s4:l1">woordt</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Moet van mynen vyandt <rhyme label="b" type="f" corresp="#s4:l2">hooren</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Als hy seght en roept ô <rhyme label="c" type="m">vriendt</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Waer is Godt die ghy <rhyme label="c" type="m" corresp="#s4:l5">bemindt</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Jesu mynen <rhyme label="a" type="m">Toe-verlaet</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Waerom hebdy my <rhyme label="b" type="f">vergheten</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Helpt my toch uyt desen <rhyme label="a" type="m" corresp="#s5:l1">staet</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">'k Hebb' myn' ooghen <rhyme label="b" type="f" corresp="#s5:l2">uyt-ghekreten</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Om dat 'k derf u soet <rhyme label="c" type="m">ghesicht</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Dat het Licht is van myn <rhyme label="c" type="m" corresp="#s5:l5">licht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Nu myn' Ziele weest <rhyme label="a" type="m">gherust</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">En vertroost uw' droeve <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Want ghy sult met herten <rhyme label="a" type="m" corresp="#s6:l1">lust</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Godt aenschouwen en <rhyme label="b" type="f" corresp="#s6:l2">beminnen</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Hopt dan en betrouwt op <rhyme label="c" type="m">hem</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Hy sal hooren uwe <rhyme label="c" type="m" corresp="#s6:l5">stem</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
