    <melody>Psalm 091 Datheen</melody>
  <author>Philippus van Sorgen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoe dat het gaet of niet en <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">‘K laet Iesus nimmer los <rhyme label="b" type="f">gaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Selfs als het onderst’ boven <rhyme label="a" type="m" corresp="#s1:l1">staet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">‘K laet Iesus nimmer los <rhyme label="b" type="f" corresp="#s1:l2">gaen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Schoon alles is in roer en <rhyme label="c" type="m">rep</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En ‘t samen schijnt <rhyme label="d" type="f">geswooren</rhyme>.</l>
        <l id="s1:l7" met="4" type="-+">Om nu gelijck met eenen <rhyme label="c" type="m" corresp="#s1:l5">schop</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Godts Volck de rust te <rhyme label="d" type="f" corresp="#s1:l6">stooren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe dat de Duyvel vleyt of <rhyme label="a" type="m">woelt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En komt als Leeuw of Vos <rhyme label="b" type="f">aen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">‘t Is al vergeefs al wat hy <rhyme label="a" type="m" corresp="#s2:l1">doet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">‘K laet Iesus nimmer los <rhyme label="b" type="f" corresp="#s2:l2">gaen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Schoon Hy my somtijts <rhyme label="c" type="m">op-gesmockt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Voor komt met valschen <rhyme label="d" type="f">luyster</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Op dat ick mede <rhyme label="c" type="m" corresp="#s2:l5">ingelockt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Sou worden tot sijn <rhyme label="d" type="f" corresp="#s2:l6">duyster</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Of met een hooge eeren <rhyme label="a" type="m">vloet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Of met een goude zee <rhyme label="b" type="f">aen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">‘t Is al vergeefs al wat hy <rhyme label="a" type="m" corresp="#s3:l1">doet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">‘K laet Iesus nimmer los <rhyme label="b" type="f" corresp="#s3:l2">gaen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Sijn eer en staet die ruymt met <rhyme label="c" type="m">stanck</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Sijn gelt vervliegt met <rhyme label="d" type="f">veeren</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Al sijn beloften die gaen <rhyme label="c" type="m" corresp="#s3:l5">manck</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Men kon daer niet op <rhyme label="d" type="f" corresp="#s3:l6">teeren</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy veylt de ziel op <rhyme label="a" type="m">leverinck</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Heel gouden <rhyme label="b" type="f">berg-gewesten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Doch als hy schult maent, niet een <rhyme label="a" type="m" corresp="#s4:l1">dinck</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Heeft hy als dan ten <rhyme label="b" type="f" corresp="#s4:l2">besten</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Sijn gantsche kraam met <rhyme label="c" type="m">poppe-goet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Sijn een hel <rhyme label="d" type="f">ruyschelingen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Sijn vrolijckheyt versuyckert <rhyme label="c" type="m" corresp="#s4:l5">roet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dreck sijn gewenste <rhyme label="d" type="f" corresp="#s4:l6">dingen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De Werelt hout hy in sijn <rhyme label="a" type="m">schilt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Daer ken ick desen vos <rhyme label="b" type="f">aen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hy mach ‘t besoecken hoe hy <rhyme label="a" type="m" corresp="#s5:l1">wilt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">‘K laet Iesu nimmer los <rhyme label="b" type="f" corresp="#s5:l2">gaen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Als hy dan niet met list en <rhyme label="c" type="m">jaaght</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Een schrick op ‘t lijf <rhyme label="d" type="f">gesonden</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">En my voor Iesus <rhyme label="c" type="m" corresp="#s5:l5">aengeklaagt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Van schrickelijcke <rhyme label="d" type="f" corresp="#s5:l6">sonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dus dondert Hy met vier en <rhyme label="a" type="m">vlam</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Van laster op mijn siel <rhyme label="b" type="f">aen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Maer egter ‘t rood bebloede <rhyme label="a" type="m" corresp="#s6:l1">Lam</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat laet ick nimmer los <rhyme label="b" type="f" corresp="#s6:l2">gaen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Dit sal ick heftig roepen <rhyme label="c" type="m">uyt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Soo lang ick hier moet <rhyme label="d" type="f">swerven</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Hy krijght my noyt ter prooy of <rhyme label="c" type="m" corresp="#s6:l5">buyt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">In leven noch in <rhyme label="d" type="f" corresp="#s6:l6">sterven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Schoon ick door u snootste <rhyme label="a" type="m">wight</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Word van het Hemels Hof <rhyme label="b" type="f">van</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Gequetste Majesteyt <rhyme label="a" type="m" corresp="#s7:l1">berigt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Daer krijght gy vrugt noch lof <rhyme label="b" type="f" corresp="#s7:l2">van</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Als dat gy sijt der knechten <rhyme label="c" type="m">knecht</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Der Broederen <rhyme label="d" type="f">aen-klaager</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Een Engel die met vuysten <rhyme label="c" type="m" corresp="#s7:l5">vegt</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Haer pijniger en <rhyme label="d" type="f" corresp="#s7:l6">plaager</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wanneer hem dit oock is <rhyme label="a" type="m">misluckt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Komt hy de siel <rhyme label="b" type="f">aenranden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Met alles wat het lichaem <rhyme label="a" type="m" corresp="#s8:l1">druckt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Met lijden, kruys en <rhyme label="b" type="f" corresp="#s8:l2">banden</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Daer kiest hy sijn suppoosten <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Een volck niet om <rhyme label="d" type="f">verdragen</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">En sist uyt die de boosten <rhyme label="c" type="m" corresp="#s8:l5">op</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Om mijne siel te <rhyme label="d" type="f" corresp="#s8:l6">plagen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dan wend hy ‘t over geenen <rhyme label="a" type="m">boeg</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Dan weder over <rhyme label="b" type="f">desen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Hy kome laet, hy kome <rhyme label="a" type="m" corresp="#s9:l1">vroeg</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Aen my is geen <rhyme label="b" type="f" corresp="#s9:l2">belesen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Soo lang ‘t de Duyvel niet <rhyme label="c" type="m">geluckt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Dat door sijn helsche <rhyme label="d" type="f">klauwen</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">‘t Lam uyt sijn Throon is <rhyme label="c" type="m" corresp="#s9:l5">af-geruckt</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Soo sal ick niet <rhyme label="d" type="f" corresp="#s9:l6">verflauwen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Soo lang de Koning Iesus <rhyme label="a" type="m">is</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Ter rechter-hand <rhyme label="b" type="f">geseten</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Soo ben ick seker en <rhyme label="a" type="m" corresp="#s10:l1">gewis</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat hy my niet sal <rhyme label="b" type="f" corresp="#s10:l2">eeten</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Mijn siels hoop-ancker daer <rhyme label="c" type="m">gehegt</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Sal steets onwanckelbaer <rhyme label="d" type="f">staen</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Schoon dat de zee is hol of <rhyme label="c" type="m" corresp="#s10:l5">slegt</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">‘K laet Iesus nimmer los <rhyme label="d" type="f" corresp="#s10:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">In Iesus houd se leven <rhyme label="a" type="m">vast</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">In Iesus houd ick light <rhyme label="b" type="f">op</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Door Iesus wordt mijn siel <rhyme label="a" type="m" corresp="#s11:l1">ontlast</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Hy tilt voor my ‘t gewight <rhyme label="b" type="f" corresp="#s11:l2">op</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">In Hem is wijsheyt, liefde, <rhyme label="c" type="m">vree</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">In Iesus sijn de <rhyme label="d" type="f">paden</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Uyt Iesus volheyt schep ick <rhyme label="c" type="m" corresp="#s11:l5">mee</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Genade voor <rhyme label="d" type="f" corresp="#s11:l6">genaden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Om dat ick woon by Iesus <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Soo is mijn ziel <rhyme label="b" type="f">onraeckbaer</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Al mijn verlies is nu <rhyme label="a" type="m" corresp="#s12:l1">gewin</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Heden nu is mijn saeck <rhyme label="b" type="f" corresp="#s12:l2">klaer</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">O Iesus Minnaer vroeg en <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Sal dese stem <rhyme label="d" type="f">op-klincken</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Tot dat gy my ontworden <rhyme label="c" type="m" corresp="#s12:l5">laet</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">In d’Eeuwigheyt <rhyme label="d" type="f" corresp="#s12:l6">versincken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
