    <melody>Psalm 138 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">In anghst en noot roep ick tot <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">O Heer Iesu, Gods Soon <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Mijn Godt en Koningh groot van <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">U help end’ kracht wil my <rhyme label="b" type="f" corresp="#s1:l2">ghenesen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Van Eeuwicheyt zijt ghy <rhyme label="d" type="m">voorsien</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Tot een Hoeck-steen heerlijck <rhyme label="e" type="f">verkooren</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Niemant heeft recht op ub <rhyme label="f" type="m">ghebouwt</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Die bleef benout of ginck <rhyme label="e" type="f" corresp="#s1:l6">verlooren</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Een steen der hulpen seer <rhyme label="a" type="m">bequaem</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Is doch u naem troostich in ‘t <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Moses u knecht, oock <rhyme label="c" type="m">Samuel</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En Daniel, u soo <rhyme label="b" type="f" corresp="#s2:l2">beschreven</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">’t Verloste volck waert ghy tot <rhyme label="d" type="m">dranck</rhyme>:</l>
        <l id="s2:l6" met="4" type="-+">Op haren ganck nae Pauli <rhyme label="e" type="f">drijven</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Ghy laeft oock noch u rancken <rhyme label="f" type="m">goed</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">O! Wijn-stock soet die in u <rhyme label="e" type="f" corresp="#s2:l6">blijven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Soet en vriend’lijck zijt ghy o <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Nae Davids leer en Petri <rhyme label="b" type="f">schrijven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die steen u een hoeck-steen <rhyme label="c" type="m">beleedt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En David smeet een steen uyt <rhyme label="b" type="f" corresp="#s3:l2">vijven</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">In ‘t hooft van dien seer grooten <rhyme label="d" type="m">Man</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Die ‘t hooft was van ‘t volck <rhyme label="e" type="f">onbesneden</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">U doodt heeft soo ons doodt <rhyme label="f" type="m">ghedoot</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Dies vry van noot zijn als ons <rhyme label="e" type="f" corresp="#s3:l6">leden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">U Heer Iesu belijden <rhyme label="a" type="m">wy</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Te wesen vry ons hooft end’ <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Koninck, end’ hoghen Priester <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Wiens doot, en bloet deckt ons <rhyme label="b" type="f" corresp="#s4:l2">oneere</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Veel zonden hebben ons <rhyme label="d" type="m">bevleckt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Maer ghy bedeckt ons met <rhyme label="e" type="f">ghenaden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Ghy zijt Gods eeuwigh <rhyme label="f" type="m">Offer-Lam</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Dat op hem nam ‘s werelts <rhyme label="e" type="f" corresp="#s4:l6">misdaden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo lief heeft Godt den mensch <rhyme label="a" type="m">gehadt</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Sijn liefsten schat hy aen hem <rhyme label="b" type="f">waeghde</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die ons verloste met sijn <rhyme label="c" type="m">doot</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Op dat in noot gheen mensch <rhyme label="b" type="f" corresp="#s5:l2">vertsaeghde</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Der Slanghen steek ghenas u <rhyme label="d" type="m">pijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">O Medecijn! van die u <rhyme label="e" type="f">vresen</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Gheen Kruyt noch plaester soo <rhyme label="f" type="m">gheacht</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">‘t Welck hadd’ die macht ons te <rhyme label="e" type="f" corresp="#s5:l6">ghenesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Christus wiens naem ghesalfde <rhyme label="a" type="m">luydt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ghy salft u Bruydt met Balsem <rhyme label="b" type="f">heerlijck</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">‘t Welck Aarons Salf-Oly <rhyme label="c" type="m">aenwees</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die David prees in Psalmen <rhyme label="b" type="f" corresp="#s6:l2">leerlijck</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Och Heer! wy zijn doodtlijck <rhyme label="d" type="m">ghewont</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Maeckt doch ghezont der zielen <rhyme label="e" type="f">qualen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">U soet ruyckende Balsem <rhyme label="f" type="m">goet</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">In ons ghemoet laetb troostigh <rhyme label="e" type="f" corresp="#s6:l6">dalen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Heylicht ons Heer inwendigh <rhyme label="a" type="m">meest</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">U woort, en Gheest sterck ons in ‘t <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Als melck, broot, wijn daer met ons <rhyme label="c" type="m">hert</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Ghevoedet wert, dat ghy wilt <rhyme label="b" type="f" corresp="#s7:l2">gheven</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En noodight elck om niet <rhyme label="d" type="m">ghewis</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Wie dorstigh is tot u te <rhyme label="e" type="f">komen</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Want dat Rantsoen kan met gheen <rhyme label="f" type="m">ghelt</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Worden voltelt voor ‘t helsch <rhyme label="e" type="f" corresp="#s7:l6">verdoemen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Recht soo als Moses uwen <rhyme label="a" type="m">knecht</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Hadd’ opgherecht een Kopren <rhyme label="b" type="f">Slanghe</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Diens aensien van der doot <rhyme label="c" type="m">ghenas</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Het volck dat was vergiftight <rhyme label="b" type="f" corresp="#s8:l2">banghe</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Soo wert verhoocht aen ‘t Kruys u <rhyme label="d" type="m">hooft</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Dat wie ghelooft niet wert <rhyme label="e" type="f">verlooren</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Maer door u doodt versoent met <rhyme label="f" type="m">Godt</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Schenckt ons dit lot, Heer <rhyme label="e" type="f" corresp="#s8:l6">uyt-verkooren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">In Israel een ballingh <rhyme label="a" type="m">mocht</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Nemen sijn tocht in de <rhyme label="b" type="f">vry-Steden</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Tot aen des Hooghen-Priesters <rhyme label="c" type="m">doot</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dan mocht hy bloot uyt gaen met <rhyme label="b" type="f" corresp="#s9:l2">vreden</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Och Heer! wy bleven <rhyme label="d" type="m">altemael</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Uyt ‘s Hemels Sael eeuwigh <rhyme label="e" type="f">verdreven</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Soo ghy als Hooghen-Priester <rhyme label="f" type="m">groot</rhyme></l>
        <l id="s9:l8" met="4" type="-+">Niet deur u doot ons bracht in ‘t <rhyme label="e" type="f" corresp="#s9:l6">leven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Seer troostigh blijckt u ampt en <rhyme label="a" type="m">naem</rhyme></l>
        <l id="s10:l2" met="4" type="-+">O Heer Lof-saem in veel <rhyme label="b" type="f">Figuyren</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ioseph werdt door sijn Broeders <rhyme label="c" type="m">quaedt</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Uyt nijdt en haet ghebracht in <rhyme label="b" type="f" corresp="#s10:l2">truyren</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Nae veel ellend’ wert hy een <rhyme label="d" type="m">Heer</rhyme>:</l>
        <l id="s10:l6" met="4" type="-+">In grooten eer seer hoogh <rhyme label="e" type="f">verheven</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Die al sijn Volck spijsde met <rhyme label="f" type="m">Broodt</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">Dat sy in noot behielden ‘t <rhyme label="e" type="f" corresp="#s10:l6">leven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Trouwlijck hebt ghy dit al <rhyme label="a" type="m">vervult</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Metu ghedult en bitter <rhyme label="b" type="f">lijden</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Heer Iesu, die om ons <rhyme label="c" type="m">misdaet</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Leet schandt en smaet tot ons <rhyme label="b" type="f" corresp="#s11:l2">bevrijden</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Ghy spijst ons met u Hemels <rhyme label="d" type="m">Broodt</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">In honghers noodt, en maeckt ons <rhyme label="e" type="f">erven</rhyme></l>
        <l id="s11:l7" met="4" type="-+">In ‘t Hemels schoon beloofde <rhyme label="f" type="m">Landt</rhyme>,</l>
        <l id="s11:l8" met="4" type="-+">Wy die met schand moesten <rhyme label="e" type="f" corresp="#s11:l6">verderven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Veel te slecht is mijn <rhyme label="a" type="m">Lof-ghesank</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Tot prijs en dank van uwen <rhyme label="b" type="f">Name</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Iesus Christus, o! Herder <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Ghy weydt en voet u Schapen <rhyme label="b" type="f" corresp="#s12:l2">t’same</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Wilt my en elken mensch doch <rhyme label="d" type="m">meest</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Met uwen Geest inwendigh <rhyme label="e" type="f">drenken</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Dat wy u liefde <rhyme label="f" type="m">onbesmet</rhyme>,</l>
        <l id="s12:l8" met="4" type="-+">In goedt opset loflijck <rhyme label="e" type="f" corresp="#s12:l6">ghedencken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Soo dat wy bequaem werden <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Het nieuwe Liedt te helpen <rhyme label="b" type="f">smaken</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Dat niemant kent, dan ‘t lief <rhyme label="c" type="m">ghetal</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Der vromen al, die ‘t Lam nae <rhyme label="b" type="f" corresp="#s13:l2">ginghen</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Treckt ende weeght ons hert tot <rhyme label="d" type="m">dy</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Soo sullen wy u vroom nae <rhyme label="e" type="f">loopen</rhyme>,</l>
        <l id="s13:l7" met="4" type="-+">Want ghy zijt Heer het <rhyme label="f" type="m">Fondament</rhyme>,</l>
        <l id="s13:l8" met="4" type="-+">Begin en endt, van al ons <rhyme label="e" type="f" corresp="#s13:l6">hopen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
