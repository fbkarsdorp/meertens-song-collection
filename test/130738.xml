  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Die de Werelt wel in <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Sy is <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Als   een woeste zee   vol <rhyme label="b" type="f">baren</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Ag, de Werelt is een <rhyme label="c" type="m">klip</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Die het <rhyme label="c" type="m" corresp="#s1:l4">schip</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Na de duistere gront   doet <rhyme label="b" type="f" corresp="#s1:l3">varen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Schip gelijk ik by den <rhyme label="a" type="m">mens</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Die zyn <rhyme label="a" type="m" corresp="#s2:l1">wens</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Gaet in 's Werelts lust <rhyme label="b" type="f">gebruiken</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">'s Werelts vreugden is een <rhyme label="c" type="m">Klip</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Die het <rhyme label="c" type="m" corresp="#s2:l4">Schip</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Na de duist're grond doet <rhyme label="b" type="f" corresp="#s2:l3">duiken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t P'rijkel   dat zijn ziele <rhyme label="a" type="m">wond</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Is de <rhyme label="a" type="m" corresp="#s3:l1">sond</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Sonde zyn de woeste <rhyme label="b" type="f">baren</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Rijkdom is haer ebb' en <rhyme label="c" type="m">vloed</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Die 't <rhyme label="c" type="m" corresp="#s3:l4">gemoet</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Met haer golven komt <rhyme label="b" type="f" corresp="#s3:l3">beswaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hoe verkeerdlik is den <rhyme label="a" type="m">mens</rhyme></l>
        <l id="s4:l2" met="2" type="+-">In sijn <rhyme label="a" type="m" corresp="#s4:l1">wens</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Soekt op aerden 's werelts <rhyme label="b" type="f">lusten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Maer de wisse dood ons <rhyme label="c" type="m">leert</rhyme>:</l>
        <l id="s4:l5" met="2" type="+-">Het <rhyme label="c" type="m" corresp="#s4:l4">verkeert</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Als de ziele soekt te <rhyme label="b" type="f" corresp="#s4:l3">rusten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Hemels Prins, gunt my <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Te <rhyme label="a" type="m" corresp="#s5:l1">betreen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Wegen die my mogen <rhyme label="b" type="f">leiden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">(Door 't geselschap van de <rhyme label="c" type="m">deugt</rhyme>)</l>
        <l id="s5:l5" met="2" type="+-">Na de <rhyme label="c" type="m" corresp="#s5:l4">vreugt</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Van des hemels <rhyme label="b" type="f" corresp="#s5:l3">eeuwigheiden</rhyme>.</l>
      </lg>
    </lg>
  </text>
