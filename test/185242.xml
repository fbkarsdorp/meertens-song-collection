    <tags/>
    <melody>Dat slechts mijn minnaar</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DAt slegts myn Minnaar hier <rhyme label="a" type="m">verschynt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">By die hy wist zyn min te <rhyme label="b" type="f">ontvonken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dan zal het dadelyk Lente <rhyme label="a" type="m" corresp="#s1:l1">zyn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dan zal het Veld met Bloemen <rhyme label="b" type="f" corresp="#s1:l2">pronken</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Maar wat ik <rhyme label="c" type="m">zie</rhyme>;</l>
        <l id="s1:l6" met="2" type="-+">Maar wat ik <rhyme label="c" type="m" corresp="#s1:l5">zie</rhyme>;</l>
        <l id="s1:l7" met="2" type="-+">O wat <rhyme label="d" type="m">verdriet</rhyme>!</l>
        <l id="s1:l8" met="2" type="-+">O wat <rhyme label="d" type="m" corresp="#s1:l7">verdriet</rhyme>!</l>
        <l id="s1:l9" met="4" type="-+">Myn Minnaar die verschynt nog <rhyme label="d" type="m" corresp="#s1:l7">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Geeft weer een woord dat myn ooren <rhyme label="a" type="m">streelt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Als zy haar Minnaars stem zult <rhyme label="b" type="f">hooren</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">En op zyn toon zoo lieffelyk <rhyme label="a" type="m" corresp="#s2:l1">speelt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat zal haar stem veel meer <rhyme label="b" type="f" corresp="#s2:l2">bekooren</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Maar ach ik <rhyme label="c" type="m">hoor</rhyme>;</l>
        <l id="s2:l6" met="2" type="-+">Maar ach ik <rhyme label="c" type="m" corresp="#s2:l5">hoor</rhyme>;</l>
        <l id="s2:l7" met="2" type="-+">O wat <rhyme label="d" type="m">verdriet</rhyme>!</l>
        <l id="s2:l8" met="2" type="-+">O wat <rhyme label="d" type="m" corresp="#s2:l7">verdriet</rhyme>!</l>
        <l id="s2:l9" met="4" type="-+">Myn Minnaar die en roept nog <rhyme label="d" type="m" corresp="#s2:l7">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O Echo die ik <rhyme label="a" type="m">honderdmaal</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Vermoeit heb door myn pynelyk <rhyme label="b" type="f">klagen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hy kan, hy zal in 't Herderen <rhyme label="a" type="m" corresp="#s3:l1">dal</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Ligt na zyn Minnaresse <rhyme label="b" type="f" corresp="#s3:l2">vragen</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Zwyg stil, hy <rhyme label="c" type="m">roept</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Zwyg stil, hy <rhyme label="c" type="m" corresp="#s3:l5">roept</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">O wat <rhyme label="d" type="m">verdriet</rhyme>!</l>
        <l id="s3:l8" met="2" type="-+">O wat <rhyme label="d" type="m" corresp="#s3:l7">verdriet</rhyme>!</l>
        <l id="s3:l9" met="4" type="-+">Myn Minnaar zingt nog <rhyme label="d" type="m" corresp="#s3:l7">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Minnaar waarom komt gy <rhyme label="a" type="m">niet</rhyme>?</l>
        <l id="s4:l2" met="4" type="-+">U min die doet myn droevig <rhyme label="b" type="f">klaagen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Het teedere noodlot dat my <rhyme label="a" type="m" corresp="#s4:l1">grieft</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Maar zagt ik hoor myn ziels <rhyme label="b" type="f" corresp="#s4:l2">behagen</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Ik zie hem <rhyme label="c" type="m">komen</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Ik zie hem <rhyme label="c" type="m" corresp="#s4:l5">komen</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">O wat <rhyme label="d" type="m">geluk</rhyme>!</l>
        <l id="s4:l8" met="2" type="-+">O wat <rhyme label="d" type="m" corresp="#s4:l7">geluk</rhyme>!</l>
        <l id="s4:l9" met="4" type="-+">'k Leef met myn Minnaar zonder <rhyme label="d" type="m" corresp="#s4:l7">druk</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
