  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs David met <rhyme label="a" type="m">ghedruys</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In quam, in Achis <rhyme label="a" type="m" corresp="#s1:l1">Huys</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Of hy het malen woud tot <rhyme label="a" type="m" corresp="#s1:l1">gruys</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En schuymd, en tierd // <rhyme label="b" type="m">ongemanierd</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Ghelijck het <rhyme label="c" type="m">Meer</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Omgeroert door het <rhyme label="c" type="m" corresp="#s1:l5">onweer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wordt Achis seer <rhyme label="a" type="m">verstoort</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En sprack daer op dit <rhyme label="a" type="m" corresp="#s2:l1">woordt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Gaet, leydt hem buyten mijnen <rhyme label="a" type="m" corresp="#s2:l1">poort</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Men raest soo grof // niet in mijn <rhyme label="b" type="m">Hof</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Wie hier <rhyme label="c" type="m">verkeert</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Sy in seden wel <rhyme label="c" type="m" corresp="#s2:l5">gheleert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Als lust, of <rhyme label="a" type="m">toornigheydt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Niet luyst'ren na 't <rhyme label="a" type="m" corresp="#s3:l1">beleyt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Van 'tgeen ghesonde reden <rhyme label="a" type="m" corresp="#s3:l1">seydt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Soo doense mee // als David <rhyme label="b" type="m">dee</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">En in 't <rhyme label="c" type="m">ghemoet</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Toonze haer ghelijck <rhyme label="c" type="m" corresp="#s3:l5">verwoet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer laet ons spreecken <rhyme label="a" type="m">mee</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ghelijck als Achis <rhyme label="a" type="m" corresp="#s4:l1">dee</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">O lust, en toorn! houdt u te <rhyme label="a" type="m" corresp="#s4:l1">vree</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Of vraeghje niet // na mijn <rhyme label="b" type="m">ghebiet</rhyme>?</l>
        <l id="s4:l5" met="2" type="-+">Gaet uyt mijn <rhyme label="c" type="m">sin</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">Want niet onreyns dient'er <rhyme label="c" type="m" corresp="#s4:l5">in</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
