  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Voor een leere wilt doch <rhyme label="a" type="f">ontfanghen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hoe ghy u jeuchdelijcke <rhyme label="a" type="f" corresp="#s1:l1">ganghen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Nu fier, sult hier, deurbringhen <rhyme label="b" type="f">spoedich</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Nae Gods wil <rhyme label="b" type="f" corresp="#s1:l3">goedich</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Lyf en ziele wilt doch <rhyme label="a" type="f">begheven</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Gods Rijck te soecken in u <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Wilt ghy, hoort my, het selve <rhyme label="b" type="f">winnen</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Moet ghy <rhyme label="b" type="f" corresp="#s2:l3">beginnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Slecht ende recht u nu te <rhyme label="a" type="f">keeren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Van der Weerelt, en het <rhyme label="a" type="f" corresp="#s3:l1">begeeren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Den sin, niet min, daer op te <rhyme label="b" type="f">setten</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Sonder <rhyme label="b" type="f" corresp="#s3:l3">beletten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Betrachten met een wesen <rhyme label="a" type="f">stille</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dat nu alleen zy uwen <rhyme label="a" type="f" corresp="#s4:l1">wille</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Verneert, ghekeert, om te <rhyme label="b" type="f">volbringhen</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Hemelsche <rhyme label="b" type="f" corresp="#s4:l3">dinghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Heymelijck int hert’ moet zijn <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Goeden wille, met Godes <rhyme label="a" type="f" corresp="#s5:l1">vresen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Godt siet, bespiet, daer op <rhyme label="b" type="f">aendachtich</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Helpt voort <rhyme label="b" type="f" corresp="#s5:l3">waerachtich</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Recht moet men t’herte hier <rhyme label="a" type="f">bereyden</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Tot den Rijcke Gods sonder <rhyme label="a" type="f" corresp="#s6:l1">beyden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Den gront, terstont, doet hier van <rhyme label="b" type="f">open</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Wilt ghy vast <rhyme label="b" type="f" corresp="#s6:l3">hopen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Int hert bemint Gods Rijck <rhyme label="a" type="f">gheduerich</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Boven dees Weerelt <rhyme label="a" type="f" corresp="#s7:l1">onghestuerich</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die haest, verbaest, en comt ten <rhyme label="b" type="f">ende</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Met groot <rhyme label="b" type="f" corresp="#s7:l3">ellende</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Continueert in dese <rhyme label="a" type="f">saken</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ghy sult int Rijcke Gods <rhyme label="a" type="f" corresp="#s8:l1">gheraken</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Afslaet, noch laet, u niet <rhyme label="b" type="f">vermoeyen</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Maer wilt u <rhyme label="b" type="f" corresp="#s8:l3">spoeyen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Keert al u saken als die <rhyme label="a" type="f">cloecken</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Die nu het Rijcke Gods hier <rhyme label="a" type="f" corresp="#s9:l1">soecken</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Den ploech, nu vroech, houdt <rhyme label="b" type="f">desghelijcken</rhyme></l>
        <l id="s9:l4" met="2" type="-+">Sonder <rhyme label="b" type="f" corresp="#s9:l3">omkijcken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Soo sult ghy int Rijcke Gods <rhyme label="a" type="f">comen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En daer in woonen met den <rhyme label="a" type="f" corresp="#s10:l1">vromen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Nu in, den sin, en gheeft <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s10:l4" met="2" type="-+">Naemaels int <rhyme label="b" type="f" corresp="#s10:l3">wesen</rhyme>.</l>
      </lg>
    </lg>
