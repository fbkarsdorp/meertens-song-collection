      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHelyck een dorstigh <rhyme label="a" type="m">Hert</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Snaeckt naer de klaer <rhyme label="b" type="f">Fontyne</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo dorst myn hert' met <rhyme label="a" type="m" corresp="#s1:l1">smert'</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Naer Sions schoone <rhyme label="b" type="f" corresp="#s1:l2">plyne</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">O Goddelycke <rhyme label="c" type="m">Stadt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Gy maeckt myn' oogen <rhyme label="c" type="m" corresp="#s1:l5">nat</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Uws ghenucht’ Soete <rhyme label="d" type="m">vrucht</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Doet my schieten door de <rhyme label="d" type="m" corresp="#s1:l7">Lucht</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Soo menigh droeven <rhyme label="d" type="m" corresp="#s1:l7">sucht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O schoon, ô <rhyme label="a" type="m">Hemels-hof</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van Jesus mynen <rhyme label="b" type="f">Koningh</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">O Landt van eer en <rhyme label="a" type="m" corresp="#s2:l1">lof</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Gy vloeyt van Melck en <rhyme label="b" type="f" corresp="#s2:l2">Honing</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">O Stadt ghy zyt <rhyme label="c" type="m">ghebouwt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van Perels ende <rhyme label="c" type="m" corresp="#s2:l5">gout</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Van u vliedt’ Al 't <rhyme label="d" type="m">verdriet</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Daer men singht een vrolyck <rhyme label="d" type="m" corresp="#s2:l7">liet</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En altydt Godt <rhyme label="d" type="m" corresp="#s2:l7">gheniet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O saligh <rhyme label="a" type="m">Vader-landt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O Landt daer ick naer <rhyme label="b" type="f">reyse</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met hert' en met <rhyme label="a" type="m" corresp="#s3:l1">verstandt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En alle myn' <rhyme label="b" type="f" corresp="#s3:l2">ghepeysen</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Myn' Ziele wordt <rhyme label="c" type="m">verheught</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Als s'over-peyst uw' <rhyme label="c" type="m" corresp="#s3:l5">vreught</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Ick beswyck’ <rhyme label="d" type="m">Ganschelyck</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Als ick peys hoe <rhyme label="d" type="m" corresp="#s3:l7">lieffelyck</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Dat is het <rhyme label="d" type="m" corresp="#s3:l7">Hemel-ryck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Noch druc, noch <rhyme label="a" type="m">tegenspoet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Noch pyn is daer, noch <rhyme label="b" type="f">lyden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Het is al Honingh <rhyme label="a" type="m" corresp="#s4:l1">soet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Vol troost, en vol <rhyme label="b" type="f" corresp="#s4:l2">verblyden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Een'dagh is beter <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Als hier veel <rhyme label="c" type="m" corresp="#s4:l5">duysendt-jaer</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Daer is rust’ Daer is <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">In de Beke der <rhyme label="d" type="m" corresp="#s4:l7">wellust</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Wordt ieders lust <rhyme label="d" type="m" corresp="#s4:l7">gheblust</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hemelsch <rhyme label="a" type="m">Jerusalem</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ghebouwt van syn <rhyme label="b" type="f">Ghesteente</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ick Ballingh hef myn' <rhyme label="a" type="m" corresp="#s5:l1">stem</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Tot U, en uw' <rhyme label="b" type="f" corresp="#s5:l2">Ghemeente</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Ach! hebt toch <rhyme label="c" type="m">derenis</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Met myn' <rhyme label="c" type="m" corresp="#s5:l5">ghevanghenis</rhyme>.</l>
        <l id="s5:l7" met="4" type="+-">Wie sal my’ Die noch <rhyme label="d" type="m">stry</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Van myn lichaem maken <rhyme label="d" type="m" corresp="#s5:l7">vry</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Op dat ick my <rhyme label="d" type="m" corresp="#s5:l7">verbly</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">On-eyndelycken <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wilt my op 't eynde <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat ick daer t'uwer <rhyme label="a" type="m" corresp="#s6:l1">eer</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Magh sonder eynde <rhyme label="b" type="f" corresp="#s6:l2">leven</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dat ick u eeu <rhyme label="c" type="m">wighlyck</rhyme></l>
        <l id="s6:l6" met="3" type="-+">In 't Hemels <rhyme label="c" type="m" corresp="#s6:l5">Koningh-ryck</rhyme></l>
        <l id="s6:l7" met="4" type="+-">Eer' bewys’ Lof en <rhyme label="d" type="m">prys</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Op de alder-soetste <rhyme label="d" type="m" corresp="#s6:l7">wys</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Van 't <rhyme label="d" type="m" corresp="#s6:l7">Hemels-Paradys</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
