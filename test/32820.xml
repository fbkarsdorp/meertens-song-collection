    <melody>Een ridder en een meisje jong</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">S Morghens vroegh inden <rhyme label="a" type="m">dagheraet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Verliet ick al mijn <rhyme label="b" type="f">ruste</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Om een die in't herte <rhyme label="a" type="m" corresp="#s1:l1">staet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ick socht hem met groot <rhyme label="b" type="f" corresp="#s1:l2">luste</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick socht hem maer ick vondt hem <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Mijn herte was vol <rhyme label="b" type="f">rouwe</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Ick gingh vol druck en groot <rhyme label="a" type="m" corresp="#s2:l1">verdriet</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Door soo menigh <rhyme label="b" type="f" corresp="#s2:l2">landouwe</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Al waer ick quam had hy <rhyme label="a" type="m">gheweest</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Hy scheen voor my te <rhyme label="b" type="f">vluchten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ick voede mijn benouwen <rhyme label="a" type="m" corresp="#s3:l1">gheest</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Alleen met deerlijck <rhyme label="b" type="f" corresp="#s3:l2">suchten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick besweer u ghy dochters <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Van Syon hoogh <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Indien ghy vindt mijn lief <rhyme label="a" type="m" corresp="#s4:l1">ydoen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Soo wilt mijn boden <rhyme label="b" type="f" corresp="#s4:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Seght hem dat een die hy <rhyme label="a" type="m">bemindt</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Is soo benouwt van <rhyme label="b" type="f">binnen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Soo sy by hem gheen troost en <rhyme label="a" type="m" corresp="#s5:l1">vindt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Sy sterft van reynder <rhyme label="b" type="f" corresp="#s5:l2">minnen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nu antwoort ons o jonckvrouw <rhyme label="a" type="m">teer</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Die ons dus comt <rhyme label="b" type="f">besweeren</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Hoe danigh is die schoon jongh <rhyme label="a" type="m" corresp="#s6:l1">Heer</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Daer nae staet u <rhyme label="b" type="f" corresp="#s6:l2">begheeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy is van clare witheyt <rhyme label="a" type="m">root</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Als die de Wijn-pers <rhyme label="b" type="f">treden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hy heeft voor my al tot der <rhyme label="a" type="m" corresp="#s7:l1">doot</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Soo vromelijck <rhyme label="b" type="f" corresp="#s7:l2">ghestreden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sijn vader regeert s'hemels <rhyme label="a" type="m">throon</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Sonder eynde oft <rhyme label="b" type="f">beginne</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Sijn moeder is een jonckvrouw <rhyme label="a" type="m" corresp="#s8:l1">schoon</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Dese ist die ick <rhyme label="b" type="f" corresp="#s8:l2">beminne</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hy is een Ridder sonder <rhyme label="a" type="m">blaem</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Al doet hy my dus <rhyme label="b" type="f">weenen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">O dochters nu hoort sijnen <rhyme label="a" type="m" corresp="#s9:l1">naem</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Iesus van <rhyme label="b" type="f" corresp="#s9:l2">Nazarenen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Nu laet ons gaen ten cruycen <rhyme label="a" type="m">baen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Daer plachmen hem te <rhyme label="b" type="f">vinden</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Daer sult ghy oock wel haest <rhyme label="a" type="m" corresp="#s10:l1">verstaen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Nieuw maer van uwen <rhyme label="b" type="f" corresp="#s10:l2">beminden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Doen ick des cruycen baen in <rhyme label="a" type="m">trat</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Met een soo vromen <rhyme label="b" type="f">moede</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Daer van d' ick mijn lief op het <rhyme label="a" type="m" corresp="#s11:l1">padt</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Gheheel bedeckt met <rhyme label="b" type="f" corresp="#s11:l2">bloede</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Och zijt ghy dit mijns herten <rhyme label="a" type="m">lief</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Cieraet des hemels <rhyme label="b" type="f">throone</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Wie heeft ghedaen dit <rhyme label="a" type="m" corresp="#s12:l1">ongherief</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Aen u edel <rhyme label="b" type="f" corresp="#s12:l2">persoone</rhyme>?</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Voor u was ick gegaen ten <rhyme label="a" type="m">stijd'</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">O vyandt is <rhyme label="b" type="f">verslaghen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Ick acht seer weynigh wat ick <rhyme label="a" type="m" corresp="#s13:l1">lijd'</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Om uwe minne te <rhyme label="b" type="f" corresp="#s13:l2">draghen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Nu comt met my reyn Ioncvrou <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Al tot mijns Vaders <rhyme label="b" type="f">stede</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Want mijn victorie ende <rhyme label="a" type="m" corresp="#s14:l1">kroon</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Die gheve ick u oock <rhyme label="b" type="f" corresp="#s14:l2">mede</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Adieu adieu gheselschap <rhyme label="a" type="m">oude</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Ghy en cont my niet <rhyme label="b" type="f">vermaecken</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Ick wil volgen mijn Bruydegom <rhyme label="a" type="m" corresp="#s15:l1">stout</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Om tot de kroone te <rhyme label="b" type="f" corresp="#s15:l2">geraecken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
