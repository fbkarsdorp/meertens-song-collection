    <melody>Windje daar het bos af drilt</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Dus in onsen Godt <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Singen wy tot spot en <rhyme label="a" type="m" corresp="#s1:l1">spijt</rhyme></l>
        <l id="s1:l3" met="2" type="+-">Van de <rhyme label="b" type="f">quaden</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Die ons <rhyme label="b" type="f" corresp="#s1:l3">smaden</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Met malkaar een vroolijk <rhyme label="c" type="m">liet</rhyme>.</l>
        <l id="s1:l6" met="4" type="+-">Dat 's geseit; wy achten 't <rhyme label="c" type="m" corresp="#s1:l5">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Of men ons om 't goede <rhyme label="a" type="m">smaa</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Daarom laten wy 't niet <rhyme label="a" type="m" corresp="#s2:l1">na</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">Maar wy <rhyme label="b" type="f">trachten</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Te <rhyme label="b" type="f" corresp="#s2:l3">verachten</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Met een mannelijk <rhyme label="c" type="m">gemoet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Al wat tegen Christus <rhyme label="c" type="m" corresp="#s2:l5">woedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Is doch dien onreinen <rhyme label="a" type="m">geest</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Lang een groot verdriet <rhyme label="a" type="m" corresp="#s3:l1">geweest</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Dat de <rhyme label="b" type="f">vromen</rhyme></l>
        <l id="s3:l4" met="2" type="+-">T'samen <rhyme label="b" type="f" corresp="#s3:l3">komen</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Tot den opbouw van Godts <rhyme label="c" type="m">huis</rhyme>.</l>
        <l id="s3:l6" met="4" type="+-">Dat 's den boosen noch een <rhyme label="c" type="m" corresp="#s3:l5">kruis</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Spijt den Satan <rhyme label="a" type="m">boven-al</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als wy sulk een <rhyme label="a" type="m" corresp="#s4:l1">vreugt-geschal</rhyme></l>
        <l id="s4:l3" met="2" type="+-">Laten <rhyme label="b" type="f">hooren</rhyme>.</l>
        <l id="s4:l4" met="2" type="+-">Kon hy 't <rhyme label="b" type="f" corresp="#s4:l3">stooren</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Hier ontbrak geen kunst noch <rhyme label="c" type="m">list</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Die oit schalk te vinden <rhyme label="c" type="m" corresp="#s4:l5">wist</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Maar de Linker moet van <rhyme label="a" type="m">kant</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Door de sterke <rhyme label="a" type="m" corresp="#s5:l1">wederstant</rhyme></l>
        <l id="s5:l3" met="2" type="+-">Van dit <rhyme label="b" type="f">singen</rhyme>.</l>
        <l id="s5:l4" met="2" type="+-">'t Kan hem <rhyme label="b" type="f" corresp="#s5:l3">dwingen</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Want hy wort met schrik <rhyme label="c" type="m">aldaar</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Iesus Geest en kracht <rhyme label="c" type="m" corresp="#s5:l5">gewaar</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ia hy vreest daar voor soo <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Als voor Davis harp <rhyme label="a" type="m" corresp="#s6:l1">wel-eer</rhyme>:</l>
        <l id="s6:l3" met="2" type="+-">Hy moet <rhyme label="b" type="f">wijken</rhyme>,</l>
        <l id="s6:l4" met="2" type="+-">En gaan <rhyme label="b" type="f" corresp="#s6:l3">strijken</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Als dat hemelsche <rhyme label="c" type="m">geluit</rhyme></l>
        <l id="s6:l6" met="4" type="+-">In sijn nijdig' ooren <rhyme label="c" type="m" corresp="#s6:l5">tuit</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Of dan ook sijn godloos <rhyme label="a" type="m">rot</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Noch met Sions lied'ren <rhyme label="a" type="m" corresp="#s7:l1">spot</rhyme>,</l>
        <l id="s7:l3" met="2" type="+-">Wat kan 't <rhyme label="b" type="f">deeren</rhyme>?</l>
        <l id="s7:l4" met="2" type="+-">Wy <rhyme label="b" type="f" corresp="#s7:l3">begeeren</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Menschen, soo vol heet <rhyme label="c" type="m">venijn</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Niet behagelijk te <rhyme label="c" type="m" corresp="#s7:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Schoon 't de trotste niet <rhyme label="a" type="m">verstaan</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">De sachtmoed'ge hooren 't <rhyme label="a" type="m" corresp="#s8:l1">aan</rhyme>,</l>
        <l id="s8:l3" met="2" type="+-">Met <rhyme label="b" type="f">vermaking</rhyme>,</l>
        <l id="s8:l4" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s8:l3">versaking</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Van al 's werelts vreugt en <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Die de ziele maar <rhyme label="c" type="m" corresp="#s8:l5">ontrust</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Godt laat' eenmaal d'aardsche <rhyme label="a" type="m">liÃªn</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Haar onaard'ge dwaasheit <rhyme label="a" type="m" corresp="#s9:l1">sien</rhyme>,</l>
        <l id="s9:l3" met="2" type="+-">Om tot <rhyme label="b" type="f">spotten</rhyme></l>
        <l id="s9:l4" met="2" type="+-">Noit te <rhyme label="b" type="f" corresp="#s9:l3">rotten</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Maar met lust Godts Wet <rhyme label="c" type="m">voortaan</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Dag en nacht wel <rhyme label="c" type="m" corresp="#s9:l5">t'overslaan</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Salig is, sijn <rhyme label="a" type="m">leven-lank</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">'t Volk, dat van het <rhyme label="a" type="m" corresp="#s10:l1">lofgeklank</rhyme></l>
        <l id="s10:l3" met="2" type="+-">En dit <rhyme label="b" type="f">juichen</rhyme></l>
        <l id="s10:l4" met="2" type="+-">Weet te <rhyme label="b" type="f" corresp="#s10:l3">tuigen</rhyme>;</l>
        <l id="s10:l5" met="4" type="+-">'t Wandelt al den dag in 't <rhyme label="c" type="m">licht</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Van Godts vriendlijk <rhyme label="c" type="m" corresp="#s10:l5">aangesicht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
