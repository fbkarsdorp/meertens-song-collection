  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHelyck een Hert oft <rhyme label="a" type="m">Dyn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wenscht naer een' klaer <rhyme label="a" type="m" corresp="#s1:l1">Fonteyn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo wensch' ick duysent <rhyme label="b" type="f">keeren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om eens by u te <rhyme label="c" type="m">zyn</rhyme></l>
        <l id="s1:l5" met="3" type="-+">O levende <rhyme label="c" type="m" corresp="#s1:l4">Fonteyn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">O alder-soetsten <rhyme label="b" type="f" corresp="#s1:l3">Heere</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghelyck den koghel <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Uyt het Canon door 't <rhyme label="a" type="m" corresp="#s2:l1">vier</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Wordt in de locht <rhyme label="b" type="f">ghedreven</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Soo vlieght myn hert en <rhyme label="c" type="m">sin</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Door 't vier van uwe <rhyme label="c" type="m" corresp="#s2:l4">min'</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van hier naer 't eeuwigh <rhyme label="b" type="f" corresp="#s2:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het aerdt-ryck scheurt en <rhyme label="a" type="m">beeft</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daer binnen windt in <rhyme label="a" type="m" corresp="#s3:l1">sweeft</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo scheurt myn hert van <rhyme label="b" type="f">binnen</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Myn hert' dat scheurt en <rhyme label="c" type="m">berst</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Het vier wordt <rhyme label="c" type="m" corresp="#s3:l4">uyt-gheperst</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Door 't blasen uwer <rhyme label="b" type="f" corresp="#s3:l3">minnen</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ick sterf, eylaes ick <rhyme label="a" type="m">sterf</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Ick sterve <rhyme label="a" type="m" corresp="#s4:l1">duysendt-werf</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om dat ick hier moet <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ey scheydt, myn Ziele <rhyme label="c" type="m">scheydt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Vaert naer de <rhyme label="c" type="m" corresp="#s4:l4">eeuwigheydt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Pooght uwen gheest te <rhyme label="b" type="f" corresp="#s4:l3">gheven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Oalder-soetsten <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ick wensch soo menigh <rhyme label="a" type="m" corresp="#s5:l1">keer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">In u te zyn <rhyme label="b" type="f">verslonden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">O Heer naer wie ick <rhyme label="c" type="m">jaegh</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Oft ick die uer' eens <rhyme label="c" type="m" corresp="#s5:l4">saegh</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat ick mocht zyn <rhyme label="b" type="f" corresp="#s5:l3">ontbonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O Saligh, ô <rhyme label="a" type="m">playsant</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">O Hemels <rhyme label="a" type="m" corresp="#s6:l1">Vaders-landt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">O plaetse van <rhyme label="b" type="f">ghenuchten</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Moet ick in 't <rhyme label="c" type="m">tranen-dal</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Daer druck is over <rhyme label="c" type="m" corresp="#s6:l4">al</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Noch langher blyven <rhyme label="b" type="f" corresp="#s6:l3">suchten</rhyme>?</l>
      </lg>
    </lg>
  </text>
