<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>190473</id>
    <date>
      <year-start>1788</year-start>
      <year-end>1788</year-end>
    </date>
    <tags/>
    <melody>Waarom zouden wij niet drinken</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Waarom zoude wy niet <rhyme label="a" type="f">zingen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Als wy by malkander <rhyme label="b" type="m">zyn</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Schoon vergifte <rhyme label="a" type="f" corresp="#s1:l1">Aaterlingen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Op ons spuwen haar <rhyme label="b" type="m" corresp="#s1:l2">fenyn</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Lieve Schoppen acht het <rhyme label="c" type="m">niet</rhyme>!</l>
        <l id="s1:l6" met="4" type="+-">Als de Weegluis u <rhyme label="c" type="m" corresp="#s1:l5">bespiet</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Want wy schoppen de <rhyme label="d" type="m">Weegluis</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Uit ons zindelyk Schoppen <rhyme label="d" type="m" corresp="#s1:l7">huis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Schoppen zyn van groote <rhyme label="a" type="f">waarden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En van 't allergrootste <rhyme label="b" type="m">nut</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Want zy spitten vuil uit <rhyme label="a" type="f" corresp="#s2:l1">d'aarde</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Op een mesthoop of een <rhyme label="b" type="m" corresp="#s2:l2">put</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Schoppen trekt u dog niets <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Zonder Schop kan niets <rhyme label="c" type="m" corresp="#s2:l5">bestaan</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Schoppen zyn 't behoud van 't <rhyme label="d" type="m">Land</rhyme>:</l>
        <l id="s2:l8" met="4" type="+-">Waar men zaait en ploegt en <rhyme label="d" type="m" corresp="#s2:l7">plant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Vader Adam was <rhyme label="a" type="f">geschaapen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Om te werken met zyn <rhyme label="b" type="m">Schop</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Zou hy vrugt van 't aardryk <rhyme label="a" type="f" corresp="#s3:l1">raapen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Of genieten 't druiven <rhyme label="b" type="m" corresp="#s3:l2">sop</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Zoo was dan voor zyn <rhyme label="c" type="m">behoud</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Aan zyn vlyt den Schop <rhyme label="c" type="m" corresp="#s3:l5">betrouwt</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Want zyn Schop, zyn Spae en <rhyme label="d" type="m">Ploeg</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Gaf hem brood en drank <rhyme label="d" type="m" corresp="#s3:l7">genoeg</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Moeder Eva zat te <rhyme label="a" type="f">spinnen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Aan het Spinwiel vroeg en <rhyme label="b" type="m">laat</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Hier moest zy de kost mee <rhyme label="a" type="f" corresp="#s4:l1">winnen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">In haar Schop en Spinsters <rhyme label="b" type="m" corresp="#s4:l2">staat</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Daarom Spinstertje en <rhyme label="c" type="m">Schop</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Vreest niet voor een slange <rhyme label="c" type="m" corresp="#s4:l5">kop</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Want door Schop en Spinsters <rhyme label="d" type="m">wet</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Word de Slang wel haast <rhyme label="d" type="m" corresp="#s4:l7">verplet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Want van Schoppen moeten <rhyme label="a" type="f">leeven</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Heer en Boer en <rhyme label="b" type="m">Werkman</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En de Spinster daar <rhyme label="a" type="f" corresp="#s5:l1">beneeven</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Brengen ons het deksel <rhyme label="b" type="m" corresp="#s5:l2">an</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Daar men Schoppen dan <rhyme label="c" type="m">verjaagt</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Werd het Vaderland <rhyme label="c" type="m" corresp="#s5:l5">geplaagt</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Waar men Spinsters ooit <rhyme label="d" type="m">veracht</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Word Stads welvaart niet <rhyme label="d" type="m" corresp="#s5:l7">betracht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Laat ons Schoppen dan niet <rhyme label="a" type="f">vreezen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Dat wy Schoppen zyn <rhyme label="b" type="m">gedoopt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Want een Schop word dog <rhyme label="a" type="f" corresp="#s6:l1">gepreezen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Daar het Land op Schoppen <rhyme label="b" type="m" corresp="#s6:l2">hoopt</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Komt dan Schoppen met <rhyme label="c" type="m">malkaar</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Houd uw Schop en Spinrok <rhyme label="c" type="m" corresp="#s6:l5">klaar</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Als is de Weegluis maar <rhyme label="d" type="m">begint</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Stryd dan voor de Schoppen <rhyme label="d" type="m" corresp="#s6:l7">Vrind</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Komt dan Schoppen laat ons <rhyme label="a" type="f">drinken</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">'t Welzyn van de Schoppen <rhyme label="b" type="m">Heer</rhyme>!</l>
        <l id="s7:l3" met="4" type="+-">Schoppen Vrouw moet mede <rhyme label="a" type="f" corresp="#s7:l1">klinken</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Schoppen Aas die <rhyme label="b" type="m" corresp="#s7:l2">triumfeer</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Schoppen Boer ons toe <rhyme label="c" type="m">gedaan</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Nel en tien zal meede <rhyme label="c" type="m" corresp="#s7:l5">slaan</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Zulk een zesde in de <rhyme label="d" type="m">hand</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Moet de Weegluis uit het <rhyme label="d" type="m" corresp="#s7:l7">Land</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Komt dan Schoppen nog een <rhyme label="a" type="f">glaasje</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Uit ons Edele Schoppen <rhyme label="b" type="m">fles</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Ieder Schop zy nu een <rhyme label="a" type="f" corresp="#s8:l1">Baasje</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Met zyn Spinstertjes <rhyme label="b" type="m" corresp="#s8:l2">Matres</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Vader Adam en zyn <rhyme label="c" type="m">Vrouw</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Bleeven aan den Schop <rhyme label="c" type="m" corresp="#s8:l5">getrouw</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Zoo leef de Schop bevryd van <rhyme label="d" type="m">kwaad</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Voor de Prins en vrye <rhyme label="d" type="m" corresp="#s8:l7">Staat</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
