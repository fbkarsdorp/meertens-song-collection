  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MIjn Iesu, Heer der <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt aen my 't minste <rhyme label="b" type="m">mensch</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Verstant, en hulp <rhyme label="a" type="f" corresp="#s1:l1">vereeren</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Dat ick na wil en <rhyme label="b" type="m" corresp="#s1:l2">wensch</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Tot uwer eer en <rhyme label="c" type="m">lof</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Heden verhale <rhyme label="d" type="m">magh</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hoe ghy tot 's Hemels <rhyme label="c" type="m" corresp="#s1:l5">hof</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Opvaert op desen <rhyme label="d" type="m" corresp="#s1:l6">dagh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ruym drie-en-dertigh <rhyme label="a" type="f">Iaren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Iesus sijn liefde <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Toont, en wilde <rhyme label="a" type="f" corresp="#s2:l1">verklaren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Aen onse sondaers <rhyme label="b" type="m" corresp="#s2:l2">snoot</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Als een Harder <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">'t Schaepje verloren <rhyme label="d" type="m">socht</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Door 't storten van sijn <rhyme label="c" type="m" corresp="#s2:l5">bloedt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En doodt, dat vint, en <rhyme label="d" type="m" corresp="#s2:l6">kocht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Uyt 't graf is hy <rhyme label="a" type="f">verresen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Door zijnen eyge <rhyme label="b" type="m">kracht</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Seyt: Discipels niet <rhyme label="a" type="f" corresp="#s3:l1">vreesen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wilt, ik heb al de <rhyme label="b" type="m" corresp="#s3:l2">macht</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Inden Hemel, dat <rhyme label="c" type="m">by</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Sulcken op 't aerdsche <rhyme label="d" type="m">dal</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Met uw'  (weest hierom <rhyme label="c" type="m" corresp="#s3:l5">bly</rhyme>)</l>
        <l id="s3:l8" met="3" type="-+">Ick altijdt wese <rhyme label="d" type="m" corresp="#s3:l6">sal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Na de Bergh van <rhyme label="a" type="f">Olyven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Mijn Godt, mijn Al nu <rhyme label="b" type="m">gaet</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Sijn Discipels te <rhyme label="a" type="f" corresp="#s4:l1">stijven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Eer dat hy haer <rhyme label="b" type="m" corresp="#s4:l2">verlaet</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Sijn Moeder is <rhyme label="c" type="m">verblijdt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat sy haer Zoon daer <rhyme label="d" type="m">siet</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">D'Apostels in die <rhyme label="c" type="m" corresp="#s4:l5">tijdt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Voelen 't minst geen <rhyme label="d" type="m" corresp="#s4:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De Seraphiennen <rhyme label="a" type="f">dalen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met d'and're Eng'len <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Om 'd Heer tot 's Hemels <rhyme label="a" type="f" corresp="#s5:l1">salen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Te leyden met groot' <rhyme label="b" type="m" corresp="#s5:l2">eer</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Zingen met <rhyme label="c" type="m">melody</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">En wenschen hem <rhyme label="d" type="m">geluck</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dat hy van nu is <rhyme label="c" type="m" corresp="#s5:l5">vry</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Van doodt, van pijn en <rhyme label="d" type="m" corresp="#s5:l6">druck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dit volck zien Iesum <rhyme label="a" type="f">varen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Na 's hemels hof, en <rhyme label="b" type="m">vreught</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">En sijn verloste <rhyme label="a" type="f" corresp="#s6:l1">scharen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Klimmen op, met <rhyme label="b" type="m" corresp="#s6:l2">geneught</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Iesus in dese <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Op 't volck slaet neer sijn <rhyme label="d" type="m">oogh</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Heeft haer <rhyme label="c" type="m" corresp="#s6:l5">gebenedijt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">En zegent haer van <rhyme label="d" type="m" corresp="#s6:l6">hoogh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Een Wolck hebben <rhyme label="a" type="f">vernomen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die d'Heer omlommert <rhyme label="b" type="m">heel</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Tot sijn Vader <rhyme label="a" type="f" corresp="#s7:l1">gekomen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Is, met d' Oudt-Vaders <rhyme label="b" type="m" corresp="#s7:l2">veel</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Aens 's Vaders <rhyme label="c" type="m">Rechter-handt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Als Godt, en Mensch nu <rhyme label="d" type="m">zit</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Toont Vader voet' en <rhyme label="c" type="m" corresp="#s7:l5">handt</rhyme>.</l>
        <l id="s7:l8" met="3" type="-+">Door-boort; en voor ons <rhyme label="d" type="m" corresp="#s7:l6">bidt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Laet ons nu alle <rhyme label="a" type="f">toonen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Ia, toonen metter <rhyme label="b" type="m">daet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat wy in d'hemel <rhyme label="a" type="f" corresp="#s8:l1">woonen</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Na Paulus leer, en <rhyme label="b" type="m" corresp="#s8:l2">raedt</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Door 't werelts wordt niet <rhyme label="c" type="m">blint</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">In 't hemels u <rhyme label="d" type="m">vermaeckt</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">'t Hemels alleen <rhyme label="c" type="m" corresp="#s8:l5">bemint</rhyme>;</l>
        <l id="s8:l8" met="3" type="-+">Dat 't hart geen aerden <rhyme label="d" type="m" corresp="#s8:l6">raeckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Iesu! voor u ick <rhyme label="a" type="f">kniele</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">'k Smeeck u, mijn hoop! Mijn <rhyme label="b" type="m">schat</rhyme>!</l>
        <l id="s9:l3" met="3" type="-+">Uyt 't aerdtsch treckt, haelt mijn <rhyme label="a" type="f" corresp="#s9:l1">ziele</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Tot u in 's hemels <rhyme label="b" type="m" corresp="#s9:l2">Stadt</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Geeft, dat 'k met hart en <rhyme label="c" type="m">zin</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Mijnen <rhyme label="d" type="m">Advocaet</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Boven 't wereldts <rhyme label="c" type="m" corresp="#s9:l5">bemin</rhyme>;</l>
        <l id="s9:l8" met="3" type="-+">Dat ick al 't werelts <rhyme label="d" type="m" corresp="#s9:l6">haet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Mijn Al, mijn Godt <rhyme label="a" type="f">Almachtigh</rhyme>;</l>
        <l id="s10:l2" met="3" type="-+">Door d'Hemel-vaert maeckt <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Uw' Hemels vreught <rhyme label="a" type="f" corresp="#s10:l1">deelachtigh</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Bevrijdt my van die <rhyme label="b" type="m" corresp="#s10:l2">pijn</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Die dueren sal <rhyme label="c" type="m">altijdt</rhyme>.</l>
        <l id="s10:l6" met="3" type="-+">Stelt mijn Ã´ Godes <rhyme label="d" type="m">Zoon</rhyme>!</l>
        <l id="s10:l7" met="3" type="-+">Tot Satans smart en <rhyme label="c" type="m" corresp="#s10:l5">spijt</rhyme></l>
        <l id="s10:l8" met="3" type="-+">By u in 's hemels <rhyme label="d" type="m" corresp="#s10:l6">throon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
