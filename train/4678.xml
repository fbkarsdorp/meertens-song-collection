  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">EYscht <rhyme label="a" type="f">wonder-werken</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Van nieuwe <rhyme label="a" type="f" corresp="#s1:l1">Kerken</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Maer die ons <rhyme label="b" type="m">reformeerdt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ons niet dan oud en <rhyme label="b" type="m" corresp="#s1:l3">leerdt</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Aldus zoo <rhyme label="c" type="f">praten</rhyme>//</l>
        <l id="s1:l6" met="2" type="-+">De yd’le <rhyme label="c" type="f" corresp="#s1:l5">vaten</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Van ’t huydendaegs <rhyme label="d" type="m">gevoel</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Op d’overwelfde <rhyme label="d" type="m" corresp="#s1:l7">Stoel</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Maer zonder <rhyme label="e" type="m">grond</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Van Goddelijk <rhyme label="e" type="m" corresp="#s1:l9">verbond</rhyme></l>
        <l id="s1:l11" met="2" type="+-">Want ’t is te <rhyme label="f" type="m">slecht</rhyme>,</l>
        <l id="s1:l12" met="2" type="-+">Wanneer de <rhyme label="f" type="m" corresp="#s1:l11">knecht</rhyme></l>
        <l id="s1:l13" met="3" type="-+">Wil boven ’s meesters <rhyme label="f" type="m" corresp="#s1:l11">recht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Den Heer der <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Kwam <rhyme label="a" type="f" corresp="#s2:l1">reformeren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Gezonden van om <rhyme label="b" type="m">hoog</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De Ioodsche <rhyme label="b" type="m" corresp="#s2:l3">Sijnagoog</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Die hy doen <rhyme label="c" type="f">blijken</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Doen zien, doen <rhyme label="c" type="f" corresp="#s2:l5">kijken</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Iae zelfs doen tasten <rhyme label="d" type="m">had</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Met Moises bouk, al <rhyme label="d" type="m" corresp="#s2:l7">wat</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Hy oit van <rhyme label="e" type="m">wet</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Of regel had <rhyme label="e" type="m" corresp="#s2:l9">gezet</rhyme>.</l>
        <l id="s2:l11" met="2" type="+-">Daer toe noch <rhyme label="f" type="m">hy</rhyme></l>
        <l id="s2:l12" met="2" type="-+">Had op zijn <rhyme label="f" type="m" corresp="#s2:l11">zy</rhyme>.</l>
        <l id="s2:l13" met="3" type="-+">Ioannis klaer <rhyme label="f" type="m" corresp="#s2:l11">bely</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">End’ Efter <rhyme label="a" type="f">dede</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Hy t’allen <rhyme label="a" type="f" corresp="#s3:l1">stede</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Door grote teyk’nen, <rhyme label="b" type="m">blijk</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van zijn gepreekte <rhyme label="b" type="m" corresp="#s3:l3">Rijk</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Iae wou haer <rhyme label="c" type="f">zonder</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Bewezen <rhyme label="c" type="f" corresp="#s3:l5">wonder</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Verbinden <rhyme label="d" type="m">nimmermeer</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Tot zijn volmaekte <rhyme label="d" type="m" corresp="#s3:l7">leer</rhyme>.</l>
        <l id="s3:l9" met="2" type="-+">Wie zal hier <rhyme label="e" type="m">van</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Met recht verschonen <rhyme label="e" type="m" corresp="#s3:l9">dan</rhyme></l>
        <l id="s3:l11" met="2" type="+-">Of Broer <rhyme label="f" type="m">Martijn</rhyme>,</l>
        <l id="s3:l12" met="2" type="-+">Of Ian <rhyme label="f" type="m" corresp="#s3:l11">Calvijn</rhyme>?</l>
        <l id="s3:l13" met="3" type="-+">Och neen! dit mag niet <rhyme label="f" type="m" corresp="#s3:l11">sijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Met minder <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Nae dien zy <rhyme label="a" type="f" corresp="#s4:l1">smeden</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Van nieus zoo vreemden <rhyme label="b" type="m">werk</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van een vervormde <rhyme label="b" type="m" corresp="#s4:l3">Kerk</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Daer z’in <rhyme label="c" type="f">vertreden</rhyme></l>
        <l id="s4:l6" met="2" type="-+">All’ d’ouden <rhyme label="c" type="f" corresp="#s4:l5">zeden</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Daer Christus kruis <rhyme label="d" type="m">bespot</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Iae daer een ander <rhyme label="d" type="m" corresp="#s4:l7">God</rhyme></l>
        <l id="s4:l9" met="2" type="-+">In word <rhyme label="e" type="m">gesteld</rhyme>.</l>
        <l id="s4:l10" met="3" type="-+">Die wouker, moord, <rhyme label="e" type="m" corresp="#s4:l9">geweld</rhyme>,</l>
        <l id="s4:l11" met="2" type="+-">Die twist en <rhyme label="f" type="m">haet</rhyme>,</l>
        <l id="s4:l12" met="2" type="-+">Die goet en <rhyme label="f" type="m" corresp="#s4:l11">Quaed</rhyme></l>
        <l id="s4:l13" met="3" type="-+">Alleen of doed, of <rhyme label="f" type="m" corresp="#s4:l11">laet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Een Kerk, daer <rhyme label="a" type="f">inne</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Geen deugd te <rhyme label="a" type="f" corresp="#s5:l1">vinnen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">En is noch klein noch <rhyme label="b" type="m">groot</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Een Kerk, die Christus <rhyme label="b" type="m" corresp="#s5:l3">dood</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Niet mette <rhyme label="c" type="f">kosten</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Zijn bloeds <rhyme label="c" type="f" corresp="#s5:l5">verloste</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Maer met bezweken <rhyme label="d" type="m">hoop</rhyme>.</l>
        <l id="s5:l8" met="3" type="-+">Een Kerk, daer in den <rhyme label="d" type="m" corresp="#s5:l7">doop</rhyme></l>
        <l id="s5:l9" met="2" type="-+">Niet af en <rhyme label="e" type="m">wascht</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Maer vuil, bevlakt, <rhyme label="e" type="m" corresp="#s5:l9">belast</rhyme>,</l>
        <l id="s5:l11" met="2" type="+-">Laet als voor <rhyme label="f" type="m">heen</rhyme>,</l>
        <l id="s5:l12" met="2" type="-+">En daer niet <rhyme label="f" type="m" corresp="#s5:l11">een</rhyme></l>
        <l id="s5:l13" met="3" type="-+">Goods wegt en kan <rhyme label="f" type="m" corresp="#s5:l11">betreen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Een Kerk, die <rhyme label="a" type="f">missen</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Voor nachtmael <rhyme label="a" type="f" corresp="#s6:l1">dissen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Moet Christus vleesch en <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En haer met schimmen <rhyme label="b" type="m" corresp="#s6:l3">voedt</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Die <rhyme label="c" type="f">d’offeranden</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Al om ter <rhyme label="c" type="f" corresp="#s6:l5">schanden</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Brengt den gehelen <rhyme label="d" type="m">dag</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Al waerze kan of <rhyme label="d" type="m" corresp="#s6:l7">mag</rhyme>.</l>
        <l id="s6:l9" met="2" type="-+">Int’t kort, een <rhyme label="e" type="m">Kerk</rhyme>;</l>
        <l id="s6:l10" met="3" type="-+">Daer in nau eenig <rhyme label="e" type="m" corresp="#s6:l9">merk</rhyme></l>
        <l id="s6:l11" met="2" type="+-">Van d’oud’ en <rhyme label="f" type="m">blijft</rhyme>:</l>
        <l id="s6:l12" met="2" type="-+">Die Munn’ken <rhyme label="f" type="m" corresp="#s6:l11">wijft</rhyme>:</l>
        <l id="s6:l13" met="3" type="-+">En altijd dwarst, en <rhyme label="f" type="m" corresp="#s6:l11">kijft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Die dan kwam <rhyme label="a" type="f">gronden</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Zoo nieuwe <rhyme label="a" type="f" corresp="#s7:l1">vonden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Voor ’t eerst’ geboude <rhyme label="b" type="m">Sticht</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Zal die niet sijn <rhyme label="b" type="m" corresp="#s7:l3">verpligt</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Zijn <rhyme label="c" type="f">Tabernakel</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Met groot <rhyme label="c" type="f" corresp="#s7:l5">Mirakel</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Van wond’ren, slag op <rhyme label="d" type="m">slag</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Te stijven al den <rhyme label="d" type="m" corresp="#s7:l7">dag</rhyme>?</l>
        <l id="s7:l9" met="2" type="-+">Voorwaer wel <rhyme label="e" type="m">gek</rhyme></l>
        <l id="s7:l10" met="3" type="-+">Zou sijn die by <rhyme label="e" type="m" corresp="#s7:l9">gebrek</rhyme></l>
        <l id="s7:l11" met="2" type="+-">Van dien, het <rhyme label="f" type="m">ouw</rhyme>’</l>
        <l id="s7:l12" met="2" type="-+">Kerk’lijk <rhyme label="f" type="m" corresp="#s7:l11">gebou</rhyme>;</l>
        <l id="s7:l13" met="3" type="-+">Voor zulk verlaten <rhyme label="f" type="m" corresp="#s7:l11">zou</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
