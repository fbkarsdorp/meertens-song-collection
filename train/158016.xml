    <tags/>
    <melody>Het daagt in de oosten</melody>
  <author>Femme Gerbrantsz Drieduym</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk heb al lange <rhyme label="a" type="f">Iaren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Voor Baker-meydt <rhyme label="b" type="m">gegaen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo dat ick wel <rhyme label="a" type="f" corresp="#s1:l1">ervaren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dit Ambacht kan <rhyme label="b" type="m" corresp="#s1:l2">verstaen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Daer ick my by sal <rhyme label="c" type="f">houwen</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Sonder <rhyme label="c" type="f" corresp="#s1:l5">Trouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het Trouwen staet my <rhyme label="a" type="f">tegen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Soo veel sien ick daer <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Want selden is 't te <rhyme label="a" type="f" corresp="#s2:l1">degen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En dickmael kleyn <rhyme label="b" type="m" corresp="#s2:l2">gewin</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Dit maeckt een huys vol <rhyme label="c" type="f">sorgen</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En oock <rhyme label="c" type="f" corresp="#s2:l5">borgen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Is dan de Kraem-vrouw <rhyme label="a" type="f">vrolijck</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dan gaet het soo wat <rhyme label="b" type="m">heen</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Maer is sy swack en <rhyme label="a" type="f" corresp="#s3:l1">oolijck</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dan is'er groot <rhyme label="b" type="m" corresp="#s3:l2">gesteen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En doet het herte <rhyme label="c" type="f">duchten</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Met veel <rhyme label="c" type="f" corresp="#s3:l5">suchten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Is 't jonge Kindt wat <rhyme label="a" type="f">vreughdigh</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En van een soeten <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat maeckt een hert nogh <rhyme label="a" type="f" corresp="#s4:l1">jeughdigh</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat anders is <rhyme label="b" type="m" corresp="#s4:l2">beswaert</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Dan kan de Moeder <rhyme label="c" type="f">rusten</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Nae haer <rhyme label="c" type="f" corresp="#s4:l5">lusten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer is het kroes van <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ontsteltick weet niet <rhyme label="b" type="m">hoe</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wat salmen dan <rhyme label="a" type="f" corresp="#s5:l1">beginnen</rhyme>?</l>
        <l id="s5:l4" met="3" type="-+">Daer is geen redden <rhyme label="b" type="m" corresp="#s5:l2">toe</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Dan is de lust <rhyme label="c" type="f">verdweenen</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">En blijft <rhyme label="c" type="f" corresp="#s5:l5">steenen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dan moetmen stadigh <rhyme label="a" type="f">wiegen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">By daegh en oock by <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Het Pap, noch Mam, noch <rhyme label="a" type="f" corresp="#s6:l1">Vijgen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Noch Suyckert-sopjen <rhyme label="b" type="m" corresp="#s6:l2">acht</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Dit baert, och lacy! <rhyme label="c" type="f">armen</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Droevigh <rhyme label="c" type="f" corresp="#s6:l5">kermen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dan moet de Baker <rhyme label="a" type="f">springen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Al is 't niet met haer <rhyme label="b" type="m">wil</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Dan douderen en <rhyme label="a" type="f" corresp="#s7:l1">singen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sus Kintjen, swijch doch <rhyme label="b" type="m" corresp="#s7:l2">stil</rhyme>;</l>
        <l id="s7:l5" met="3" type="-+">Hoe mooghje u soo <rhyme label="c" type="f">quellen</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Ons <rhyme label="c" type="f" corresp="#s7:l5">ontstellen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Daer baet geen sangh noch <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Het Kindt moet uyt de <rhyme label="b" type="m">Luy'r</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Een Speld moet het wat <rhyme label="a" type="f" corresp="#s8:l1">steken</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Kom repje nae het <rhyme label="b" type="m" corresp="#s8:l2">vuyr</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En wilt sijn eers-gat <rhyme label="c" type="f">vegen</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Klaer te <rhyme label="c" type="f" corresp="#s8:l5">degen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Maer zijnder noch meer <rhyme label="a" type="f">Kind'ren</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Die maecken groot <rhyme label="b" type="m">getier</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Met krijten, ginsen, <rhyme label="a" type="f" corresp="#s9:l1">vlind'ren</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dan gins, en dan weer <rhyme label="b" type="m" corresp="#s9:l2">hier</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Met stooten, slaen, en <rhyme label="c" type="f">springen</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Danssen, <rhyme label="c" type="f" corresp="#s9:l5">singen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Komt by dees <rhyme label="a" type="f">tegenheden</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Een gnorrigh droncken <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Dan is men meer <rhyme label="a" type="f" corresp="#s10:l1">t'onvreden</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Gelijckmen dencken <rhyme label="b" type="m" corresp="#s10:l2">kan</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">Dan klaeghtmen sijn <rhyme label="c" type="f">ellende</rhyme></l>
        <l id="s10:l6" met="2" type="-+">Aen <rhyme label="c" type="f" corresp="#s10:l5">bekende</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Wat dunckt u mijn <rhyme label="a" type="f">Gespeelen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Staet u dit doen wat <rhyme label="b" type="m">aen</rhyme>?</l>
        <l id="s11:l3" met="3" type="-+">Soud het u niet <rhyme label="a" type="f" corresp="#s11:l1">verveelen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Als ghy dit padt most <rhyme label="b" type="m" corresp="#s11:l2">gaen</rhyme>?</l>
        <l id="s11:l5" met="3" type="-+">Soud u dit bitter <rhyme label="c" type="f">Trouwen</rhyme></l>
        <l id="s11:l6" met="2" type="-+">Niet <rhyme label="c" type="f" corresp="#s11:l5">berouwen</rhyme>;</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Het Trouwen staet my <rhyme label="a" type="f">tegen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Ick blijf voort die ick <rhyme label="b" type="m">bin</rhyme>;</l>
        <l id="s12:l3" met="3" type="-+">Geen Man maeckt my <rhyme label="a" type="f" corresp="#s12:l1">verlegen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Dat is mijn hert en <rhyme label="b" type="m" corresp="#s12:l2">sin</rhyme>:</l>
        <l id="s12:l5" met="3" type="-+">Sijn vryheyt te <rhyme label="c" type="f">behouwen</rhyme></l>
        <l id="s12:l6" met="2" type="-+">Gaet voor <rhyme label="c" type="f" corresp="#s12:l5">Trouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
