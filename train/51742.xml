<song>
  <meta>
    <id>51742</id>
    <date>
      <year-start>1759</year-start>
      <year-end>1759</year-end>
    </date>
    <tags>
      <tag standard-name="klaaglied" translation="lamentation">klaaglied</tag>
    </tags>
    <melody/>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Vrienden, komt hier <rhyme label="a" type="m">al</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hoort dit vreemd <rhyme label="a" type="m" corresp="#s1:l1">geval</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Het zal u wel <rhyme label="b" type="m">aanstaan</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">'t Dient de jonkheid tot <rhyme label="b" type="m" corresp="#s1:l3">vermaan</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Als gij wordt <rhyme label="c" type="m">gevrijd</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ziet dat gij voorzichtig <rhyme label="c" type="m" corresp="#s1:l5">zijt</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">En bemint <rhyme label="d" type="m">malkaêr</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Uit liefde te <rhyme label="d" type="m" corresp="#s1:l7">gaêr</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Gelijk eene maagd heeft <rhyme label="e" type="m">gedaan</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Om haar lief bij te <rhyme label="e" type="m" corresp="#s1:l9">staan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Deze teedre <rhyme label="a" type="m">meid</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die lang was <rhyme label="a" type="m" corresp="#s2:l1">gevrijd</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Van eenen <rhyme label="b" type="m">jongman</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die ook uit liefde <rhyme label="b" type="m" corresp="#s2:l3">kwam</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Hij vroeg met <rhyme label="c" type="m">accoord</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van zijn liefste 't <rhyme label="c" type="m" corresp="#s2:l5">jawoord</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Waarop dat dees <rhyme label="d" type="m">meid</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Hem heeft ja <rhyme label="d" type="m" corresp="#s2:l7">gezeid</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">En toen hij van haar <rhyme label="e" type="m">ging</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Gaf haar een gouden <rhyme label="e" type="m" corresp="#s2:l9">ring</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maar als den dag kwam <rhyme label="a" type="m">aan</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat zij dacht ten trouw te <rhyme label="a" type="m" corresp="#s3:l1">gaan</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hoort zij, wat droef <rhyme label="b" type="m">geween</rhyme>!</l>
        <l id="s3:l4" met="3" type="-+">Dat haar minnaar moest <rhyme label="b" type="m" corresp="#s3:l3">heen</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Want hij moest, hoort <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Gauw vertrekken <rhyme label="c" type="m" corresp="#s3:l5">gaan</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Naar een andre <rhyme label="d" type="m">stad</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">'t Geen hij niet gedacht en <rhyme label="d" type="m" corresp="#s3:l7">had</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Omdat hij van den <rhyme label="e" type="m">staat</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Alsdan was een <rhyme label="e" type="m" corresp="#s3:l9">soldaat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maar dees maget <rhyme label="a" type="m">zoet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Vast en trouw van <rhyme label="a" type="m" corresp="#s4:l1">gemoed</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sprak dan met veel <rhyme label="b" type="m">smert</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">'k Ban hem nooit uit mijn <rhyme label="b" type="m" corresp="#s4:l3">hert</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">'k Zal hem volgen <rhyme label="c" type="m">overal</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Waar hij gaat of wezen <rhyme label="c" type="m" corresp="#s4:l5">zal</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Ach, mijn lief, riep <rhyme label="d" type="m">zij</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Thans zijt gij ook in 't <rhyme label="d" type="m" corresp="#s4:l7">lij</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Alzoo van uw lief te <rhyme label="e" type="m">zijn</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Is voor u een zware <rhyme label="e" type="m" corresp="#s4:l9">pijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Deze meid <rhyme label="a" type="m">voorwaar</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die ging dolen zeven <rhyme label="a" type="m" corresp="#s5:l1">jaar</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">In een <rhyme label="b" type="m">mans-habijt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Zocht zij al dien <rhyme label="b" type="m" corresp="#s5:l3">tijd</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Tot dat zij kwam moê en <rhyme label="c" type="m">mat</rhyme></l>
        <l id="s5:l6" met="3" type="-+">In de schoone Keulsche <rhyme label="c" type="m" corresp="#s5:l5">stad</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Het eerste wat zij <rhyme label="d" type="m">ziet</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Was haar lief: hij kende haar <rhyme label="d" type="m" corresp="#s5:l7">niet</rhyme>;</l>
        <l id="s5:l9" met="3" type="-+">Daar hij juist bij <rhyme label="e" type="m">geval</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Speelde met den <rhyme label="e" type="m" corresp="#s5:l9">kaatsenbal</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Als 't spel was <rhyme label="a" type="m">gedaan</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ging hij zeer <rhyme label="a" type="m" corresp="#s6:l1">voldaan</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Zonder veel <rhyme label="b" type="m">gedruis</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Op weg naar zijn <rhyme label="b" type="m" corresp="#s6:l3">huis</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Maar deze maget <rhyme label="c" type="m">teêr</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Ach, haar hart brak nog <rhyme label="c" type="m" corresp="#s6:l5">meer</rhyme>!</l>
        <l id="s6:l7" met="3" type="-+">Als z'hem weg zag <rhyme label="d" type="m">gaan</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Haar oog kwam vol <rhyme label="d" type="m" corresp="#s6:l7">getraan</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Maar zij volgde hem zeer <rhyme label="e" type="m">ras</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Tot zij in de herberg <rhyme label="e" type="m" corresp="#s6:l9">was</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Als zij was in <rhyme label="a" type="m">huis</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Vroeg zij zonder <rhyme label="a" type="m" corresp="#s7:l1">abuis</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Aan den weerd zeer <rhyme label="b" type="m">gauw</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Of hij haar logeeren <rhyme label="b" type="m" corresp="#s7:l3">wou</rhyme>?</l>
        <l id="s7:l5" met="3" type="-+">Ja, zei ras de <rhyme label="c" type="m">weerdin</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Gaat maar de kamer <rhyme label="c" type="m" corresp="#s7:l5">in</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Want ik zie aan u <rhyme label="d" type="m">wel</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Dat gij zijt een braaf <rhyme label="d" type="m" corresp="#s7:l7">gezel</rhyme>.</l>
        <l id="s7:l9" met="3" type="-+">Maar niemand op dit <rhyme label="e" type="m">pas</rhyme></l>
        <l id="s7:l10" met="3" type="-+">Dacht dat zij een vrouwmensch <rhyme label="e" type="m" corresp="#s7:l9">was</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Zij zei haar neêr zeer <rhyme label="a" type="m">blij</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Seffens aan haar liefstens <rhyme label="a" type="m" corresp="#s8:l1">zij</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En zij vroeg hem <rhyme label="b" type="m">gauw</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Af hij had reeds een <rhyme label="b" type="m" corresp="#s8:l3">vrouw</rhyme>?</l>
        <l id="s8:l5" met="3" type="-+">Waarop hij zei <rhyme label="c" type="m">alsdan</rhyme>:</l>
        <l id="s8:l6" met="3" type="-+">Neen, 'k ben nog een <rhyme label="c" type="m" corresp="#s8:l5">jongman</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Maar ik heb langen <rhyme label="d" type="m">tijd</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Een schoon meisje <rhyme label="d" type="m" corresp="#s8:l7">gevrijd</rhyme>.</l>
        <l id="s8:l9" met="3" type="-+">'k Was haast in den echten <rhyme label="e" type="m">staat</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Als 'k moest weg als <rhyme label="e" type="m" corresp="#s8:l9">soldaat</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Deze dochter zei <rhyme label="a" type="m">dan</rhyme>:</l>
        <l id="s9:l2" met="3" type="-+">Zeg mij toch eens, <rhyme label="a" type="m" corresp="#s9:l1">jongman</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Hoe gij die schoone <rhyme label="b" type="m">vrouw</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Vergeten hebt zoo <rhyme label="b" type="m" corresp="#s9:l3">gauw</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Spreek maar goed of <rhyme label="c" type="m">slecht</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Was de liefde dan <rhyme label="c" type="m" corresp="#s9:l5">oprecht</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Die gij tot haar <rhyme label="d" type="m">had</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Als gij weg gingt als <rhyme label="d" type="m" corresp="#s9:l7">soldaat</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Of waart gij valsch van <rhyme label="e" type="m">hert</rhyme></l>
        <l id="s9:l10" met="3" type="-+">Als gij haar liet in <rhyme label="e" type="m" corresp="#s9:l9">smert</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">O, neen, zei den <rhyme label="a" type="m">soldaat</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Weet, mijn lieve <rhyme label="a" type="m" corresp="#s10:l1">kameraad</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Als ik van haar henen <rhyme label="b" type="m">ging</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Mijn hart als van smart <rhyme label="b" type="m" corresp="#s10:l3">verging</rhyme>;</l>
        <l id="s10:l5" met="3" type="-+">Maar nu is het <rhyme label="c" type="m">gedaan</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Want mijn liefde is <rhyme label="c" type="m" corresp="#s10:l5">vergaan</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Door den langen <rhyme label="d" type="m">tijd</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Dat wij zijn vaneen <rhyme label="d" type="m" corresp="#s10:l7">gescheid</rhyme>:</l>
        <l id="s10:l9" met="3" type="-+">Er zijn hier andre meiskens <rhyme label="e" type="m">ziet</rhyme></l>
        <l id="s10:l10" met="3" type="-+">Aan wien ik mijne liefde <rhyme label="e" type="m" corresp="#s10:l9">bied</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Als hij dat woord <rhyme label="a" type="m">uitsprak</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Schier haar hert van droefheid <rhyme label="a" type="m" corresp="#s11:l1">brak</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">Zij vroeg dan aan de <rhyme label="b" type="m">vrouw</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Waar dat zij slapen <rhyme label="b" type="m" corresp="#s11:l3">zou</rhyme>?</l>
        <l id="s11:l5" met="3" type="-+">Kom, zeide zij, <rhyme label="c" type="m">mijnheer</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">En beliefde niet <rhyme label="c" type="m" corresp="#s11:l5">meer</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Ik zal 't u wijzen <rhyme label="d" type="m">aan</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Waar gij zult slapen <rhyme label="d" type="m" corresp="#s11:l7">gaan</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">Bij dezen soldaat <rhyme label="e" type="m">net</rhyme>,</l>
        <l id="s11:l10" met="3" type="-+">Want ik heb maar een <rhyme label="e" type="m" corresp="#s11:l9">bed</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Als den dag kwam <rhyme label="a" type="m">aan</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Is zij haastig <rhyme label="a" type="m" corresp="#s12:l1">opgestaan</rhyme>;</l>
        <l id="s12:l3" met="3" type="-+">Zij schreef dan een <rhyme label="b" type="m">brief</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Dat zij was zijn zoete <rhyme label="b" type="m" corresp="#s12:l3">lief</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Die hij zoo langen <rhyme label="c" type="m">tijd</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Hadde aan haar deur <rhyme label="c" type="m" corresp="#s12:l5">gevrijd</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">En dat zij zeven <rhyme label="d" type="m">jaar</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Hem gezocht had hier en <rhyme label="d" type="m" corresp="#s12:l7">daar</rhyme>,</l>
        <l id="s12:l9" met="3" type="-+">En tot een <rhyme label="e" type="m">bevestiging</rhyme></l>
        <l id="s12:l10" met="3" type="-+">Liet zij hem zijn gouden <rhyme label="e" type="m" corresp="#s12:l9">ring</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Zij is dan <rhyme label="a" type="m">weggegaan</rhyme>!</l>
        <l id="s13:l2" met="3" type="-+">Met haar oogen vol <rhyme label="a" type="m" corresp="#s13:l1">getraan</rhyme>.</l>
        <l id="s13:l3" met="3" type="-+">Zij sprak, adieu, <rhyme label="b" type="m">minnaar</rhyme>!</l>
        <l id="s13:l4" met="3" type="-+">Maar niemand en wist dat <rhyme label="b" type="m" corresp="#s13:l3">daar</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Ook dezen <rhyme label="c" type="m">jongman</rhyme></l>
        <l id="s13:l6" met="3" type="-+">En wist nergens <rhyme label="c" type="m" corresp="#s13:l5">van</rhyme>.</l>
        <l id="s13:l7" met="3" type="-+">Want als hij <rhyme label="d" type="m">opstond</rhyme></l>
        <l id="s13:l8" met="3" type="-+">Hij op de tafel <rhyme label="d" type="m" corresp="#s13:l7">vond</rhyme>,</l>
        <l id="s13:l9" met="3" type="-+">Dezen <rhyme label="e" type="m">afscheids-brief</rhyme></l>
        <l id="s13:l10" met="3" type="-+">Al van zijn zoete <rhyme label="e" type="m" corresp="#s13:l9">lief</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Hij verbrak den brief <rhyme label="a" type="m">terstond</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Waar hij den ring in <rhyme label="a" type="m" corresp="#s14:l1">vond</rhyme>;</l>
        <l id="s14:l3" met="3" type="-+">Als hij dien ring <rhyme label="b" type="m">aanzag</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Viel hij als in <rhyme label="b" type="m" corresp="#s14:l3">onmacht</rhyme>.</l>
        <l id="s14:l5" met="3" type="-+">Nu moet ik, riep <rhyme label="c" type="m">hij</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Blijven eeuwig in het <rhyme label="c" type="m" corresp="#s14:l5">lij</rhyme>!</l>
        <l id="s14:l7" met="3" type="-+">Hij deed voort zijn <rhyme label="d" type="m">beklag</rhyme></l>
        <l id="s14:l8" met="3" type="-+">Dat een menschen harte <rhyme label="d" type="m" corresp="#s14:l7">brak</rhyme></l>
        <l id="s14:l9" met="3" type="-+">Ach, mijn lief, waar moogt gij <rhyme label="e" type="m">zijn</rhyme>,</l>
        <l id="s14:l10" met="3" type="-+">Kom help mij toch uit de <rhyme label="e" type="m" corresp="#s14:l9">pijn</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Maar hoort voort naar dit <rhyme label="a" type="m">lied</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Wat daarna is <rhyme label="a" type="m" corresp="#s15:l1">geschied</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Hoe dezen <rhyme label="b" type="m">jongman</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Nu ziek te worden <rhyme label="b" type="m" corresp="#s15:l3">kwam</rhyme>.</l>
        <l id="s15:l5" met="3" type="-+">Ja, hij moest zachtjes <rhyme label="c" type="m">aan</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Naar een gasthuis <rhyme label="c" type="m" corresp="#s15:l5">gaan</rhyme>;</l>
        <l id="s15:l7" met="3" type="-+">Daar vond hij zijn <rhyme label="d" type="m">lief</rhyme></l>
        <l id="s15:l8" met="3" type="-+">Die geschreven had den <rhyme label="d" type="m" corresp="#s15:l7">brief</rhyme>.</l>
        <l id="s15:l9" met="3" type="-+">Die daar diende op dit <rhyme label="e" type="m">pas</rhyme></l>
        <l id="s15:l10" met="3" type="-+">En bij de zieken <rhyme label="e" type="m" corresp="#s15:l9">was</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Het gebeurde <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Dat zij bij den zieken <rhyme label="a" type="m" corresp="#s16:l1">kwam</rhyme>;</l>
        <l id="s16:l3" met="3" type="-+">Maar als zij hem <rhyme label="b" type="m">zag</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Denk, voor haar wat droeve <rhyme label="b" type="m" corresp="#s16:l3">slag</rhyme>!</l>
        <l id="s16:l5" met="3" type="-+">Ja, haar hart zoo <rhyme label="c" type="m">teêr</rhyme></l>
        <l id="s16:l6" met="3" type="-+">Dat en kost niet <rhyme label="c" type="m" corresp="#s16:l5">meer</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Tot zij haar <rhyme label="d" type="m">voorwaar</rhyme></l>
        <l id="s16:l8" met="3" type="-+">Maakte aan hem <rhyme label="d" type="m" corresp="#s16:l7">kenbaar</rhyme>,</l>
        <l id="s16:l9" met="3" type="-+">Dat zij was die zelve <rhyme label="e" type="m">meid</rhyme></l>
        <l id="s16:l10" met="3" type="-+">Die hij voortijds had <rhyme label="e" type="m" corresp="#s16:l9">gevrijd</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Als hij haar <rhyme label="a" type="m">aanzag</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Wijl hij daar als stervend <rhyme label="a" type="m" corresp="#s17:l1">lag</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Riep hij <rhyme label="b" type="m">overluid</rhyme>:</l>
        <l id="s17:l4" met="3" type="-+">Ach, daar is mijn weerde <rhyme label="b" type="m" corresp="#s17:l3">bruid</rhyme>!</l>
        <l id="s17:l5" met="3" type="-+">Denkt eens wat een <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s17:l6" met="3" type="-+">Dat het daar moest <rhyme label="c" type="m" corresp="#s17:l5">zijn</rhyme>,</l>
        <l id="s17:l7" met="3" type="-+">Als zij stond bij zijn <rhyme label="d" type="m">bed</rhyme></l>
        <l id="s17:l8" met="3" type="-+">Schier van leed en smert <rhyme label="d" type="m" corresp="#s17:l7">verplet</rhyme>.</l>
        <l id="s17:l9" met="3" type="-+">Zij omhelsden dan <rhyme label="e" type="m">malkaêr</rhyme></l>
        <l id="s17:l10" met="3" type="-+">En stierven zoo te <rhyme label="e" type="m" corresp="#s17:l9">gaêr</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Jongheid voor het <rhyme label="a" type="m">lest</rhyme></l>
        <l id="s18:l2" met="3" type="-+">'k Raad eenieder voor het <rhyme label="a" type="m" corresp="#s18:l1">best</rhyme></l>
        <l id="s18:l3" met="3" type="-+">Als gij vrijdt te <rhyme label="b" type="m">zaam</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Zorg toch voor uw eer en <rhyme label="b" type="m" corresp="#s18:l3">naam</rhyme></l>
        <l id="s18:l5" met="3" type="-+">En acht de weerde <rhyme label="c" type="m">maagd</rhyme></l>
        <l id="s18:l6" met="3" type="-+">Die u wederliefde <rhyme label="c" type="m" corresp="#s18:l5">draagt</rhyme>.</l>
        <l id="s18:l7" met="3" type="-+">En gij dochters <rhyme label="d" type="m">dan</rhyme></l>
        <l id="s18:l8" met="3" type="-+">Als u vrijdt een <rhyme label="d" type="m" corresp="#s18:l7">jongman</rhyme></l>
        <l id="s18:l9" met="3" type="-+">Doet gelijk zij heeft <rhyme label="e" type="m">gedaan</rhyme></l>
        <l id="s18:l10" met="3" type="-+">Om haar lief bij te <rhyme label="e" type="m" corresp="#s18:l9">staan</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
