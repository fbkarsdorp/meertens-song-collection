      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Menschelijck <rhyme label="a" type="m">geslacht</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Hout op u selven <rhyme label="a" type="m" corresp="#s1:l1">wacht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En hout een oogh in 't <rhyme label="b" type="m">zeyl</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Een oogh op 's levens <rhyme label="c" type="m">end'</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Op dat ghy meught <rhyme label="d" type="m">ontgaen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Het eeuwich helsch' <rhyme label="c" type="m" corresp="#s1:l4">torment</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">U leven vlieght <rhyme label="a" type="m">boor-by</rhyme></l>
        <l id="s2:l2" met="3" type="-+">G'lijck als een Schip voor <rhyme label="a" type="m" corresp="#s2:l1">Ey</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">'t Welck voortgedreven <rhyme label="b" type="m">wort</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van een Noordt-Weste <rhyme label="c" type="m">windt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die wacker blaest, en <rhyme label="d" type="m">stoockt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ick bidd' u, dit <rhyme label="c" type="m" corresp="#s2:l4">versint</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een schaduw' ras <rhyme label="a" type="m">vergaet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Een Bode stil niet <rhyme label="a" type="m" corresp="#s3:l1">staet</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">En schi-e-lijck <rhyme label="b" type="m">verdwijnt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Uyt ons gesicht den <rhyme label="c" type="m">roock</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Een vogel snellich <rhyme label="d" type="m">vlieght</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Soo doet ons leven <rhyme label="c" type="m" corresp="#s3:l4">oock</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">G'lijck eene bloeme <rhyme label="a" type="m">spruyt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Uyt d'aerd', en haest gaet <rhyme label="a" type="m" corresp="#s4:l1">uyt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Soo staet een weynich <rhyme label="b" type="m">tijdt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ons leven fraey, en <rhyme label="c" type="m">schoon</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">O menschen! worden <rhyme label="d" type="m">wy</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dit daeg'lijcx niet <rhyme label="c" type="m" corresp="#s4:l4">gewoon</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die leven op dees <rhyme label="a" type="m">aerd'</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Zijn van een Vrouw <rhyme label="a" type="m" corresp="#s5:l1">gebaert</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die vol ellenden <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Eylaes! uyt eene <rhyme label="c" type="m">Vrouw</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Die ons in groot <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Geholpen heeft, en <rhyme label="c" type="m" corresp="#s5:l4">rouw</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">In tijts dan u <rhyme label="a" type="m">versiet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">O wanckelbarich <rhyme label="a" type="m" corresp="#s6:l1">riet</rhyme>!</l>
        <l id="s6:l3" met="3" type="-+">Wilt leven <rhyme label="b" type="m">Christelijck</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">De sonden schuwt, en <rhyme label="c" type="m">mijdt</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Beoeffent doch de <rhyme label="d" type="m">deught</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Met ernstelijcke <rhyme label="c" type="m" corresp="#s6:l4">vlijdt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Soo sult ghy by den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Hier namaels zijn in <rhyme label="a" type="m" corresp="#s7:l1">eer</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Wie dit vergunnen <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Aen my, en aen u <rhyme label="c" type="m">all'</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die droevich leven <rhyme label="d" type="m">hier</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Op dit bedruckte <rhyme label="c" type="m" corresp="#s7:l4">dal</rhyme>.</l>
      </lg>
    </lg>
  </text>
