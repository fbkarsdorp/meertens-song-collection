  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">ALs Godt met zware <rhyme label="a" type="f">plaegen</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Besouckt en Landt en <rhyme label="b" type="m">Kerk</rhyme>:</l>
        <l id="s1:l3" met="3" type="+-">Dan vieren wy <rhyme label="a" type="f" corresp="#s1:l1">Biddagen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Dan staken wy ons <rhyme label="b" type="m" corresp="#s1:l2">werk</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Dan gaen wy nae Gods <rhyme label="c" type="f">Wooningh</rhyme></l>
        <l id="s1:l6" met="3" type="+-">In menigh sucht en <rhyme label="d" type="m">traen</rhyme>:</l>
        <l id="s1:l7" met="3" type="+-">Dan soucken wy <rhyme label="c" type="f" corresp="#s1:l5">verschooningh</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Van't quaet dat is <rhyme label="d" type="m" corresp="#s1:l6">begaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Dan soucken wy <rhyme label="a" type="f">versoeningh</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Met onsen Lieven <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Door zijnes Soons <rhyme label="a" type="f" corresp="#s2:l1">voldoeningh</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Dan leggen wy ter <rhyme label="b" type="m" corresp="#s2:l2">neer</rhyme></l>
        <l id="s2:l5" met="3" type="+-">In stof en asch <rhyme label="c" type="f">ootmoedigh</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">En roupen; 'tis ons <rhyme label="d" type="m">schult</rhyme>!</l>
        <l id="s2:l7" met="3" type="+-">Heer! helpt ons nochmael <rhyme label="c" type="f" corresp="#s2:l5">spoedigh</rhyme>:</l>
        <l id="s2:l8" met="3" type="+-">Hebt met ons wat <rhyme label="d" type="m" corresp="#s2:l6">gedult</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Wy hebben noch <rhyme label="a" type="f">betrouwen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Op Godes <rhyme label="b" type="m">vrindlijckheyt</rhyme>:</l>
        <l id="s3:l3" met="3" type="+-">Als ons de sonden <rhyme label="a" type="f" corresp="#s3:l1">rouwen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Die dan worden <rhyme label="b" type="m" corresp="#s3:l2">beschreyt</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Als wy die wegen <rhyme label="c" type="f">mijden</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Die ons brachten dit <rhyme label="d" type="m">quaet</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">Dan raecken wy uyt <rhyme label="c" type="f" corresp="#s3:l5">lijden</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Tot een gewenschte <rhyme label="d" type="m" corresp="#s3:l6">staet</rhyme>.</l>
      </lg>
    </lg>
  </text>
