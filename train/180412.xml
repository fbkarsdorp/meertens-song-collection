  <author>Philippus van Sorgen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Is nu Godts Kerck een <rhyme label="a" type="m">Kneeckel-huys</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Vol beenderen, en stoff en <rhyme label="a" type="m" corresp="#s1:l1">gruys</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van veel uyt-gedroogde <rhyme label="b" type="f">merg-schoncken</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Die over-al, al langt <rhyme label="b" type="f" corresp="#s1:l3">stoncken</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sijn sy vermollemt en <rhyme label="a" type="m">verrott</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En als de Wijn-stock die niet <rhyme label="a" type="m" corresp="#s2:l1">bott</rhyme>!</l>
        <l id="s2:l3" met="4" type="-+">Daarom de moet niet <rhyme label="b" type="f">opgegeven</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die dooden sullen weder <rhyme label="b" type="f" corresp="#s2:l3">leven</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want onse Godt die levend’ <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Waarlijck geen Godt der dooden <rhyme label="a" type="m" corresp="#s3:l1">is</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Maer sal sig self aan haar <rhyme label="b" type="f">vertoonen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En by, en in, haer komen <rhyme label="b" type="f" corresp="#s3:l3">woonen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daar sal nog eens dat ligt op <rhyme label="a" type="m">gaan</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Daar Godt in ‘t Woordt doet van <rhyme label="a" type="m" corresp="#s4:l1">vermaan</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Iehova selfs, sal noch <rhyme label="b" type="f">verschijnen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En leven doen die hier nu <rhyme label="b" type="f" corresp="#s4:l3">quijnen</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Iae met dooden gerekent <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En leggen als in een <rhyme label="a" type="m" corresp="#s5:l1">beswijm</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En kragteloos, en sonder <rhyme label="b" type="f">kragten</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Hebt nog gedult, een weynig <rhyme label="b" type="f" corresp="#s5:l3">wagten</rhyme>;</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Want hy die nu te komen <rhyme label="a" type="m">staat</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Sijn Kercke niet geheel <rhyme label="a" type="m" corresp="#s6:l1">verlaat</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Al sien wy niet hoe ‘t sal <rhyme label="b" type="f">geschieden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">De Heere sal sijn Geest <rhyme label="b" type="f" corresp="#s6:l3">gebiden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Want sijne handt is niet <rhyme label="a" type="m">verkort</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Aen magt het hem oock niet en <rhyme label="a" type="m" corresp="#s7:l1">schort</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">’T is sijne wijsheyt die de <rhyme label="b" type="f">saken</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die duyster sijn weet ligt te <rhyme label="b" type="f" corresp="#s7:l3">maken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hoe reyck-halst Sion na dien <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En seyt komt dog o Iesu <rhyme label="a" type="m" corresp="#s8:l1">agh</rhyme>!</l>
        <l id="s8:l3" met="4" type="-+">Met uwen Geest, en geeft <rhyme label="b" type="f">geloove</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ach dat hy daal, en koom van <rhyme label="b" type="f" corresp="#s8:l3">boven</rhyme>.</l>
      </lg>
    </lg>
  </text>
