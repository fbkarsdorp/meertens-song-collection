<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>190910</id>
    <date>
      <year-start>1845</year-start>
      <year-end>1845</year-end>
    </date>
    <tags/>
    <melody/>
  <author>Gijsbertus van Sandwijk</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Het we-lig-rijs-je moet <rhyme label="a" type="f">ge-bo-gen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wanneer het jeug-dig is en <rhyme label="b" type="m">zacht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En met geen harde schors <rhyme label="a" type="f" corresp="#s1:l1">om-to-gen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ge-wil-lig wijkt voor kleine <rhyme label="b" type="m" corresp="#s1:l2">kracht</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Maar staat het ja-ren lang aan <rhyme label="c" type="f">stormen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">In 't wild, en op zich zel-ve <rhyme label="d" type="m">bloot</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Geen ho-ve-nier geeft nieu-we <rhyme label="c" type="f" corresp="#s1:l5">vor-men</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Aan een tot boom ge-groei-de <rhyme label="d" type="m" corresp="#s1:l6">loot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het we-lig rijs-je moet <rhyme label="a" type="f">ge-bogen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wanneer het jeug-dig is en <rhyme label="b" type="m">zacht</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En met geen harde schors <rhyme label="a" type="f" corresp="#s2:l1">om-togen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ge-wil-lig wijkt voor kleine <rhyme label="b" type="m" corresp="#s2:l2">kracht</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Maar staat het ja-ren lang aan <rhyme label="c" type="f">stormen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">In 't wild, en op zich zel-ve <rhyme label="d" type="m">bloot</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Geen ho-ve-nier geeft nieuwe <rhyme label="c" type="f" corresp="#s2:l5">vormen</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Aan een tot boom ge-groei-de <rhyme label="d" type="m" corresp="#s2:l6">loot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Men valt geen hovenier dan <rhyme label="a" type="f">lastig</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat hij zijn kunst daaraan <rhyme label="b" type="m">besteedt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het blijft een boom, zoo krom, zoo <rhyme label="a" type="f" corresp="#s3:l1">kwastig</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Als hem het toeval worden <rhyme label="b" type="m" corresp="#s3:l2">deed</rhyme>;</l>
        <l id="s3:l5" met="4" type="-+">Zoo zal den mensch, die <rhyme label="c" type="f">losgelaten</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En woest in zijne jongheid <rhyme label="d" type="m">leeft</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Het treffendst onderwijs niet <rhyme label="c" type="f" corresp="#s3:l5">baten</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Dat wijsheid hem volwassen <rhyme label="d" type="m" corresp="#s3:l6">geeft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
