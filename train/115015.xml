  <author>Guilielmus Bolognino</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Waerheydt wilt <rhyme label="a" type="f">besinnen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die alle saecken <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Voor 't ghen' sy zijn <rhyme label="a" type="f" corresp="#s1:l1">beminnen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Oft stooten met den <rhyme label="b" type="m" corresp="#s1:l2">voet</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">'t Ware goedt sy ons hier <rhyme label="c" type="m">thoont</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dat daer boven eeuwich <rhyme label="c" type="m" corresp="#s1:l5">croont</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Laet haer u hier <rhyme label="a" type="f">vervullen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gheen ydelheden <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Plaets in u vinden <rhyme label="a" type="f" corresp="#s2:l1">sullen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gheluckigh is den <rhyme label="b" type="m" corresp="#s2:l2">man</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Die doorschenen van haer <rhyme label="c" type="m">licht</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Allen goedt houdt in 't <rhyme label="c" type="m" corresp="#s2:l5">ghesicht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Waerheydt sal u <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat Godt is, die't gheeft <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Waer door sy van u <rhyme label="a" type="f" corresp="#s3:l1">keeren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">De ydel glorie <rhyme label="b" type="m" corresp="#s3:l2">sal</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Leeren dat Godt allen <rhyme label="c" type="m">lof</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Toecomt, die hem steelt het <rhyme label="c" type="m" corresp="#s3:l5">stof</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sy sal bekent u <rhyme label="a" type="f">maecken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">De wereldts <rhyme label="b" type="m">achtbaerheydt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Waer nae de menschen <rhyme label="a" type="f" corresp="#s4:l1">haecken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Van haren schijn <rhyme label="b" type="m" corresp="#s4:l2">verleydt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Sy sal thoonen u <rhyme label="c" type="m">ghewis</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Hoe onachtbaer dat die <rhyme label="c" type="m" corresp="#s4:l5">is</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy sal u doen <rhyme label="a" type="f">bevroeien</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wat dat den wellust <rhyme label="b" type="m">is</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Om dien te <rhyme label="a" type="f" corresp="#s5:l1">verfoeien</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Bemint in <rhyme label="b" type="m" corresp="#s5:l2">duysternis</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Want door haer de ziel <rhyme label="c" type="m">verstaet</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Datse al te haest <rhyme label="c" type="m" corresp="#s5:l5">vergaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De Waerheydt u doen <rhyme label="a" type="f">kennen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Den waren rijckdom <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Om u alsoo 't <rhyme label="a" type="f" corresp="#s6:l1">ontwennen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Te soecken in dit <rhyme label="b" type="m" corresp="#s6:l2">dal</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Silver, goudt met pijn en <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Dat gheen herten rusten <rhyme label="c" type="m" corresp="#s6:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De eyghe liefdes <rhyme label="a" type="f">perten</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Sy aen de ziel <rhyme label="b" type="m">verclaert</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Verbant die uyt de <rhyme label="a" type="f" corresp="#s7:l1">herten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En ware liefde <rhyme label="b" type="m" corresp="#s7:l2">baert</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Daer sy wordt oprecht <rhyme label="c" type="m">bemint</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Daer s'in als tot leydtsman <rhyme label="c" type="m" corresp="#s7:l5">dient</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Sy leert de loghen <rhyme label="a" type="f">schouwen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En 't dobbel valsch <rhyme label="b" type="m">ghemoedt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Oprecht in als ons <rhyme label="a" type="f" corresp="#s8:l1">houwen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">In simpelheydt s' ons <rhyme label="b" type="m" corresp="#s8:l2">doet</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m">onbekent</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Allen dobbelheydt <rhyme label="c" type="m" corresp="#s8:l5">ghewent</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">'Nen grooten vrijdom <rhyme label="a" type="f">gheven</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Sy sal, en vaste <rhyme label="b" type="m">vreught</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Aen hem, die haer <rhyme label="a" type="f" corresp="#s9:l1">beleven</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Sal in oprechte <rhyme label="b" type="m" corresp="#s9:l2">deught</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Sy begint in desen <rhyme label="c" type="m">tijdt</rhyme></l>
        <l id="s9:l6" met="4" type="+-">'t Eeuwigh levens groot <rhyme label="c" type="m" corresp="#s9:l5">jolijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">O Waerheydt die <rhyme label="a" type="f">gheboren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Uyt Godt voor d' eeuwen <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">U Waerheydt, langh <rhyme label="a" type="f" corresp="#s10:l1">verloren</rhyme></l>
        <l id="s10:l4" met="3" type="-+">In desen droeven <rhyme label="b" type="m" corresp="#s10:l2">tijdt</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Seynt ons van den hoochsten <rhyme label="c" type="m">throon</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">'t Goedt en 't quaet in als die <rhyme label="c" type="m" corresp="#s10:l5">thoon</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Seynt ons oock u <rhyme label="a" type="f">ghenaden</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Die 't cranck en traegh <rhyme label="b" type="m">ghemoedt</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Nae uwe waerheydts <rhyme label="a" type="f" corresp="#s11:l1">raden</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Beweghen tot het <rhyme label="b" type="m" corresp="#s11:l2">goedt</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">En dat trecken van het <rhyme label="c" type="m">quaedt</rhyme></l>
        <l id="s11:l6" met="4" type="+-">In 'nen onbesweken <rhyme label="c" type="m" corresp="#s11:l5">haet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
