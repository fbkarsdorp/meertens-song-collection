  <author>Johannes Wilhelmus Bussingh</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Laet mij heengaen, Heer! in <rhyme label="a" type="f">vrede</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En bij jesus christus <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Dat ik vrolijk grafwaerts <rhyme label="a" type="f" corresp="#s1:l1">trede</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Daer is 't eind van al mijn <rhyme label="b" type="m" corresp="#s1:l2">pijn</rhyme>!</l>
        <l id="s1:l5" met="4" type="+-">christus is en blijft mijn <rhyme label="c" type="f">leven</rhyme>:</l>
        <l id="s1:l6" met="4" type="+-">Zou me in 't sterven troost <rhyme label="c" type="f" corresp="#s1:l5">begeven</rhyme>? -</l>
        <l id="s1:l7" met="4" type="+-">Neen; de Dood is mij <rhyme label="d" type="m">gewin</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">'k Ga, door 't graf, ten Hemel <rhyme label="d" type="m" corresp="#s1:l7">in</rhyme>. -</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als een hert naer koele <rhyme label="a" type="f">bronnen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Zo verlangt mijn ziel naer <rhyme label="b" type="m">God</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">'k Heb de weereld <rhyme label="a" type="f" corresp="#s2:l1">overwonnen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">ô! Mij wacht het zaligst <rhyme label="b" type="m" corresp="#s2:l2">lot</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Ja; het onverganklijk <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Wordt mij, uit genaê, <rhyme label="c" type="f" corresp="#s2:l5">gegeven</rhyme>: -</l>
        <l id="s2:l7" met="4" type="+-">Hallelujah! - 'k Ben <rhyme label="d" type="m">bereid</rhyme>: -</l>
        <l id="s2:l8" met="4" type="+-">Nader, dag der <rhyme label="d" type="m" corresp="#s2:l7">eeuwigheid</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Waet'ren vloeijen; - donders <rhyme label="a" type="f">kraken</rhyme>; -</l>
        <l id="s3:l2" met="4" type="+-">Maer het Godsbevel: Ik <rhyme label="b" type="m">wil</rhyme>!</l>
        <l id="s3:l3" met="4" type="+-">Kan de golven effen <rhyme label="a" type="f" corresp="#s3:l1">maken</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Daer voor zwijgt de donder <rhyme label="b" type="m" corresp="#s3:l2">stil</rhyme>. -</l>
        <l id="s3:l5" met="4" type="+-">Zo wijkt, uit de bange <rhyme label="c" type="f">harten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Op Gods troostwoord, angst en <rhyme label="c" type="f" corresp="#s3:l5">smarten</rhyme>: -</l>
        <l id="s3:l7" met="4" type="+-">Schoon vervolgd tot aen het <rhyme label="d" type="m">graf</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Eens wischt God de tranen <rhyme label="d" type="m" corresp="#s3:l7">af</rhyme>. -</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vrolijk dan! - Geen last van <rhyme label="a" type="f">zonden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Drukk', mijn angstig hart, u <rhyme label="b" type="m">neêr</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Zie op de angsten, striemen, <rhyme label="a" type="f" corresp="#s4:l1">wonden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Zie op 't sterven van uw' <rhyme label="b" type="m" corresp="#s4:l2">Heer</rhyme>. -</l>
        <l id="s4:l5" met="4" type="+-">ô! Die Dood heeft heil <rhyme label="c" type="f">verworven</rhyme>. -</l>
        <l id="s4:l6" met="4" type="+-">Kom, welaen, vol moeds, <rhyme label="c" type="f" corresp="#s4:l5">gestorven</rhyme>!</l>
        <l id="s4:l7" met="4" type="+-">Die in christus jesus <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Vreest voor geen <rhyme label="d" type="m" corresp="#s4:l7">verdoemenis</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Houdt zich somtijds God <rhyme label="a" type="f">verborgen</rhyme>; -</l>
        <l id="s5:l2" met="4" type="+-">Door het duister' <rhyme label="b" type="m">heengeleid</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Smaek ik weêr, bij held'ren <rhyme label="a" type="f" corresp="#s5:l1">morgen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Hemelsche <rhyme label="b" type="m" corresp="#s5:l2">tevredenheid</rhyme>. -</l>
        <l id="s5:l5" met="4" type="+-">ô, Mijn ziel! verban dan 't <rhyme label="c" type="f">klagen</rhyme>: -</l>
        <l id="s5:l6" met="4" type="+-">'k Zie mijn' sterfdag vrolijk <rhyme label="c" type="f" corresp="#s5:l5">dagen</rhyme>;</l>
        <l id="s5:l7" met="4" type="+-">Ja; mijn heilstaet is <rhyme label="d" type="m">gewis</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Wijl mijn God mijn Vader <rhyme label="d" type="m" corresp="#s5:l7">is</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Trouwe Vader! - Ik <rhyme label="a" type="f">bevele</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Mijnen geest in Uwe <rhyme label="b" type="m">hand</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Dat ik rasch in de erf'nis <rhyme label="a" type="f" corresp="#s6:l1">dele</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Van het beste <rhyme label="b" type="m" corresp="#s6:l2">Vaderland</rhyme>. -</l>
        <l id="s6:l5" met="4" type="+-">Ja; na droefheid, angst en <rhyme label="c" type="f">lijden</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Hallelujah! komt <rhyme label="c" type="f" corresp="#s6:l5">verblijden</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Eenmael zal geen druk of <rhyme label="d" type="m">pijn</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Eenmael zal geen dood meer <rhyme label="d" type="m" corresp="#s6:l7">zijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Nader, dierbre jesus! <rhyme label="a" type="f">nader</rhyme>! -</l>
        <l id="s7:l2" met="4" type="+-">Liefde is sterk gelijk de <rhyme label="b" type="m">Dood</rhyme>!</l>
        <l id="s7:l3" met="4" type="+-">Uw voldoening aen Uw' <rhyme label="a" type="f" corresp="#s7:l1">Vader</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Maekt mij straks Uw' <rhyme label="b" type="m" corresp="#s7:l2">throongenoot</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Haest is al de strijd <rhyme label="c" type="f">volstreden</rhyme>:</l>
        <l id="s7:l6" met="4" type="+-">Onnadenkb're <rhyme label="c" type="f" corresp="#s7:l5">zaligheden</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Heeft Uw liefje mij <rhyme label="d" type="m">bereid</rhyme>. -</l>
        <l id="s7:l8" met="4" type="+-">Nader, dag der <rhyme label="d" type="m" corresp="#s7:l7">eeuwigheid</rhyme>! -</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Nader, uiterste <rhyme label="a" type="f">oogenblikken</rhyme>!</l>
        <l id="s8:l2" met="4" type="+-">Nimmer vrezelijk voor <rhyme label="b" type="m">mij</rhyme>. -</l>
        <l id="s8:l3" met="4" type="+-">Neen; bij de allerjongste <rhyme label="a" type="f" corresp="#s8:l1">snikken</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Staet mijn jesus aen mijn <rhyme label="b" type="m" corresp="#s8:l2">zijê</rhyme>. -</l>
        <l id="s8:l5" met="4" type="+-">Daer 't Geloof mag <rhyme label="c" type="f">zegepralen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Kan men blij ten grave <rhyme label="c" type="f" corresp="#s8:l5">dalen</rhyme>. -</l>
        <l id="s8:l7" met="4" type="+-">Kom! - Mijn jesus! - Amen! - <rhyme label="d" type="m">Ja</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Kom! - Ik sterf! - <rhyme label="d" type="m" corresp="#s8:l7">Hallelujah</rhyme>! -</l>
      </lg>
    </lg>
  </text>
</song>
