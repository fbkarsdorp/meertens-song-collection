  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Aenneemt mijn sak’, O lieve <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijn noot moet ick u <rhyme label="b" type="f">claghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick ben benout nu even <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Helpt mijnen last doch <rhyme label="b" type="f" corresp="#s1:l2">draghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Kent dat ick ben u handtwerck <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Laet my niet gaen te <rhyme label="b" type="f">schanden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo langh’ ick ben in s’weerelts <rhyme label="a" type="m" corresp="#s2:l1">pleyn</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Houdt my met uwen <rhyme label="b" type="f" corresp="#s2:l2">handen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Liev’ Heer, gheeft my t’vertrouwen <rhyme label="a" type="m">vast</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat ghy mt sult <rhyme label="b" type="f">verhooren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En helpen draghen mijnen <rhyme label="a" type="m" corresp="#s3:l1">last</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Soo ghy beloeft te <rhyme label="b" type="f" corresp="#s3:l2">vooren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Eeuwich en almachtich ghy <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ghenoechsaem  <rhyme label="b" type="f">overvloedich</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">O mijn ziel, hoept ghy vast <rhyme label="a" type="m" corresp="#s4:l1">altijt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Op Gods beloften <rhyme label="b" type="f" corresp="#s4:l2">goedich</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Neemt wech, Heer, maeckt ons herten <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van dootlijcken <rhyme label="b" type="f">ghedachten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Op dat wy soo niet moede <rhyme label="a" type="m" corresp="#s5:l1">bly</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Het Hemelsche <rhyme label="b" type="f" corresp="#s5:l2">betrachten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Als wy bidden, vergheeft ons ons <rhyme label="a" type="m">schuilt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Soo leert ons oock <rhyme label="b" type="f">vergheven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Want ghy, O Heer, betalen <rhyme label="a" type="m" corresp="#s6:l1">sult</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Nae dat men heeft <rhyme label="b" type="f" corresp="#s6:l2">bedreven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Recht bidden wy u,  lieve <rhyme label="a" type="m">Vaer</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Vergheeft doch onse <rhyme label="b" type="f">zonden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Door  Christum,  dien ghy lieft <rhyme label="a" type="m" corresp="#s7:l1">voorwaer</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Soo’t niet en is om <rhyme label="b" type="f" corresp="#s7:l2">gronden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Terwijlen ghy ons hebt <rhyme label="a" type="m">ghemaeckt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wilt doch ons leven <rhyme label="b" type="f">stieren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat het ter salicheyt <rhyme label="a" type="m" corresp="#s8:l1">gheraeckt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Heer, wilt ons soo <rhyme label="b" type="f" corresp="#s8:l2">regieren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sonder u gonst ist al om <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Wy moesten al <rhyme label="b" type="f">verdrooghen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dauw en reghen over ons <rhyme label="a" type="m" corresp="#s9:l1">giet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Om comen tot <rhyme label="b" type="f" corresp="#s9:l2">verhooghen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Doch Heere, toont ons u <rhyme label="a" type="m">aenschijn</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Dat wy’t moghen <rhyme label="b" type="f">aenschouwen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dit goet hebben u kinders <rhyme label="a" type="m" corresp="#s10:l1">fijn</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Het troostse int <rhyme label="b" type="f" corresp="#s10:l2">benouwen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Terwijlen ghy een eeuwich <rhyme label="a" type="m">licht</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Zijt, boven alle <rhyme label="b" type="f">maten</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Soo gheeft onsen ooghen <rhyme label="a" type="m" corresp="#s11:l1">t’ghesicht</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Dat wy dit moghen <rhyme label="b" type="f" corresp="#s11:l2">vaten</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Kloecklijck sullen wy moghen <rhyme label="a" type="m">soo</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Wandelen in u <rhyme label="b" type="f">weghen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Mijn hert en ziel sal wesen <rhyme label="a" type="m" corresp="#s12:l1">vroo</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Als ick dit heb <rhyme label="b" type="f" corresp="#s12:l2">vercreghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
