  <author>Gijsbertus van Sandwijk</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'k Min met al mijn hart mijn' <rhyme label="a" type="f">vader</rhyme>;</l>
        <l id="s1:l2" met="4" type="+-">Niemand is als hij zoo <rhyme label="b" type="m">goed</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Hij, hij is mijn leidsman, <rhyme label="a" type="f" corresp="#s1:l1">rader</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die mij liefdrijk leidt en <rhyme label="b" type="m" corresp="#s1:l2">hoedt</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">En, reeds in mijn teedre <rhyme label="c" type="m">jeugd</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Kennen doet het pad der <rhyme label="c" type="m" corresp="#s1:l5">deugd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'k Min met al mijn hart mijn' <rhyme label="a" type="f">vader</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Niemand is als hij zoo <rhyme label="b" type="m">goed</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Hij, hij is mijn leidsman, <rhyme label="a" type="f" corresp="#s2:l1">rader</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die mij liefdrijk leidt en <rhyme label="b" type="m" corresp="#s2:l2">hoedt</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">En, reeds in mijn teedre <rhyme label="c" type="m">jeugd</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Kennen doet het pad der <rhyme label="c" type="m" corresp="#s2:l5">deugd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'k Zal hem immer dankbaar <rhyme label="a" type="f">eeren</rhyme>:</l>
        <l id="s3:l2" met="4" type="+-">'k Zal hem steeds gehoorzaam <rhyme label="b" type="m">zijn</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">'k Wil, door naarstiglijk te <rhyme label="a" type="f" corresp="#s3:l1">leeren</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Door mijn' ijver, hem <rhyme label="b" type="m" corresp="#s3:l2">verblijn</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">'k Weet, het schenkt hem <rhyme label="c" type="m">zielevreugd</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Als ik ga op 't pad der <rhyme label="c" type="m" corresp="#s3:l5">deugd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
