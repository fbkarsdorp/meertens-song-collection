    <melody>Baise-moi ma Jeanneton</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MAg de kerkelijke <rhyme label="a" type="m">wet</rhyme></l>
        <l id="s1:l2" met="3" type="+-">’t Vollik wel <rhyme label="b" type="f">belasten</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Van des Heeren wegen, <rhyme label="a" type="m" corresp="#s1:l1">met</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Vieren ofte <rhyme label="b" type="f" corresp="#s1:l2">vasten</rhyme>?</l>
        <l id="s1:l5" met="4" type="+-">Want de leering van <rhyme label="c" type="m">Calvijn</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Haer vermeet zoo vrij te <rhyme label="c" type="m" corresp="#s1:l5">zijn</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Dat haer niemant <rhyme label="d" type="f">wetten</rhyme></l>
        <l id="s1:l8" met="3" type="+-">En vermag te <rhyme label="d" type="f" corresp="#s1:l7">zetten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dit’s de vryicheyd des <rhyme label="a" type="m">vlees</rhyme>;</l>
        <l id="s2:l2" met="3" type="+-">Dit sijn nieuwe <rhyme label="b" type="f">vonden</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Om te leven zonder <rhyme label="a" type="m" corresp="#s2:l1">vrees</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">In vermaek van <rhyme label="b" type="f" corresp="#s2:l2">zonden</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Dit heeft Christus niet <rhyme label="c" type="m">begeerdt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dus heeft Paulus niet <rhyme label="c" type="m" corresp="#s2:l5">geleerdt</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Maer in all’ haer <rhyme label="d" type="f">Scholen</rhyme></l>
        <l id="s2:l8" met="3" type="+-">G’hoorzaemheyd <rhyme label="d" type="f" corresp="#s2:l7">bevolen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die mijn Tempel niet en <rhyme label="a" type="m">hoordt</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Laet hy <rhyme label="b" type="f">afgescheiden</rhyme></l>
        <l id="s3:l3" met="4" type="+-">(dus zoo luidt Goods eigen <rhyme label="a" type="m" corresp="#s3:l1">woord</rhyme>)</l>
        <l id="s3:l4" met="3" type="+-">Blijven als een <rhyme label="b" type="f" corresp="#s3:l2">Heiden</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Want die haer te hooren <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">My, en mijn gezag <rhyme label="c" type="m" corresp="#s3:l5">versmaedt</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">En daerom te <rhyme label="d" type="f">gader</rhyme></l>
        <l id="s3:l8" met="3" type="+-">D’oorde van <rhyme label="d" type="f" corresp="#s3:l7">Vader</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dat dan alle zielen <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Scharpelikken <rhyme label="b" type="f">letten</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Onder overige <rhyme label="a" type="m" corresp="#s4:l1">bevel</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Zich met lief te <rhyme label="b" type="f" corresp="#s4:l2">zetten</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Niet alleenlijk om de <rhyme label="c" type="m">straf</rhyme>;</l>
        <l id="s4:l6" met="4" type="+-">Maer om Gode die haer <rhyme label="c" type="m" corresp="#s4:l5">gaf</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Zelfs ook nae <rhyme label="d" type="f">conscienty</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Deez’ <rhyme label="d" type="f" corresp="#s4:l7">obedienty</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Vraegdy waer de diere <rhyme label="a" type="m">kost</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Van des Heren <rhyme label="b" type="f">lijden</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Die door ’t kruis ons heeft <rhyme label="a" type="m" corresp="#s5:l1">verlost</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Ons dan af <rhyme label="b" type="f" corresp="#s5:l2">bevrydde</rhyme>?</l>
        <l id="s5:l5" met="4" type="+-">Vande zonde, dood, en <rhyme label="c" type="m">Hel</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En van Moises hard <rhyme label="c" type="m" corresp="#s5:l5">bevel</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">’t Welkmen nau kon <rhyme label="d" type="f">dragen</rhyme></l>
        <l id="s5:l8" met="3" type="+-">In voorleden <rhyme label="d" type="f" corresp="#s5:l7">dagen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dit is vryicheyds <rhyme label="a" type="m">genoug</rhyme>.</l>
        <l id="s6:l2" met="3" type="+-">Lof en dank sy <rhyme label="b" type="f">Gode</rhyme>!</l>
        <l id="s6:l3" met="4" type="+-">Maer te nemen al ’t <rhyme label="a" type="m" corresp="#s6:l1">gewroug</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Van ons, der <rhyme label="b" type="f" corresp="#s6:l2">Geboden</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Was des Heeren meening <rhyme label="c" type="m">niet</rhyme>:</l>
        <l id="s6:l6" met="4" type="+-">Diem’ in ’t Euangely <rhyme label="c" type="m" corresp="#s6:l5">ziet</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Geven aen zijn <rhyme label="d" type="f">vrinden</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Koorden om te <rhyme label="d" type="f" corresp="#s6:l7">binden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">En dat met een knoop zoo <rhyme label="a" type="m">vast</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Dat den Hemel <rhyme label="b" type="f">zoude</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Wes by hen hier, was <rhyme label="a" type="m" corresp="#s7:l1">belast</rhyme>;</l>
        <l id="s7:l4" met="3" type="+-">Daer, van waerden <rhyme label="b" type="f" corresp="#s7:l2">houden</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Zeker wel met goede <rhyme label="c" type="m">re’en</rhyme>:</l>
        <l id="s7:l6" met="4" type="+-">Want hoe zou de Kerk <rhyme label="c" type="m" corresp="#s7:l5">bene’en</rhyme></l>
        <l id="s7:l7" met="3" type="+-">Moises zetel <rhyme label="d" type="f">wezen</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">In gezag van <rhyme label="d" type="f" corresp="#s7:l7">dezen</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Denkt hoe wijlen <rhyme label="a" type="m">Mardochee</rhyme></l>
        <l id="s8:l2" met="3" type="+-">Al den Joodschen <rhyme label="b" type="f">Tempel</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Vasten, ende vieren <rhyme label="a" type="m" corresp="#s8:l1">de’e</rhyme>.</l>
        <l id="s8:l4" met="3" type="+-">En, nae zijn <rhyme label="b" type="f" corresp="#s8:l2">exemple</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Insgelijks de <rhyme label="c" type="m">Machabeen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Alze Goods Autaer <rhyme label="c" type="m" corresp="#s8:l5">vertre’en</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">In voorgaende <rhyme label="d" type="f">tijden</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">Gode weerom <rhyme label="d" type="f" corresp="#s8:l7">wydden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Most dan ’t oude <rhyme label="a" type="m">Israël</rhyme></l>
        <l id="s9:l2" met="3" type="+-">Vasten ende <rhyme label="b" type="f">vieren</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">End’ in al de resten <rhyme label="a" type="m" corresp="#s9:l1">wel</rhyme></l>
        <l id="s9:l4" met="3" type="+-">Buigen en <rhyme label="b" type="f" corresp="#s9:l2">hoor-rieren</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Naer het Priesterlijk <rhyme label="c" type="m">gebied</rhyme>;</l>
        <l id="s9:l6" met="4" type="+-">Hoe zal hem den Christen <rhyme label="c" type="m" corresp="#s9:l5">niet</rhyme></l>
        <l id="s9:l7" met="3" type="+-">Willig’lijk <rhyme label="d" type="f">verneeren</rhyme></l>
        <l id="s9:l8" met="3" type="+-">Voor de Kerk des <rhyme label="d" type="f" corresp="#s9:l7">Heeren</rhyme>?</l>
      </lg>
    </lg>
  </text>
</song>
