    <melody>Rozemond die lag gedoken</melody>
  <author>Isaak A. van Vaerlen en Jan Jansz. van Asten</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WY Dochters moghen wel <rhyme label="a" type="f">klaghen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Dat de Werelt dus <rhyme label="b" type="m">vergaet</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Men hoort niet een Jonckman <rhyme label="a" type="f" corresp="#s1:l1">vraghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Noch ook van geen vrijsters <rhyme label="b" type="m" corresp="#s1:l2">praet</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Maer het is al nae de <rhyme label="c" type="m">kroegh</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">'t Bier is haer Dochters <rhyme label="c" type="m" corresp="#s1:l5">ghenoegh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Is het niet om te <rhyme label="a" type="f">betreuren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Dat de Vryers gaen <rhyme label="b" type="m">verby</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Men siet het dagelijckx <rhyme label="a" type="f" corresp="#s2:l1">gebeuren</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Wat voor lieffde dat het <rhyme label="b" type="m" corresp="#s2:l2">zy</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">'t Is maer om de slap met <rhyme label="c" type="m">Bier</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Haer te doen, en dat by 't <rhyme label="c" type="m" corresp="#s2:l5">vier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sondaeghs sou men gaeren <rhyme label="a" type="f">wand'len</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Met de Vryers naer den <rhyme label="b" type="m">Hout</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En met haer van lieffden <rhyme label="a" type="f" corresp="#s3:l1">hand'len</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Maer eylaes! sy zijn <rhyme label="b" type="m" corresp="#s3:l2">verkout</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En bevroeren als een <rhyme label="c" type="m">Ys</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">Drincken liever 't Bier om <rhyme label="c" type="m" corresp="#s3:l5">prijs</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Is tot Jonckers op de <rhyme label="a" type="f">trappen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En op andere plaetsen <rhyme label="b" type="m">meer</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Praten liever van de <rhyme label="a" type="f" corresp="#s4:l1">slappen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En van and're ondeught <rhyme label="b" type="m" corresp="#s4:l2">meer</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Laten ons soo zitten <rhyme label="c" type="m">stil</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Metter tijdt vergaet ons <rhyme label="c" type="m" corresp="#s4:l5">wil</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Nu wy moghen noch eens <rhyme label="a" type="f">hopen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dat sy sullen voor het <rhyme label="b" type="m">Bier</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Noch een soete Dochter <rhyme label="a" type="f" corresp="#s5:l1">koopen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Daer sy mee tot haer <rhyme label="b" type="m" corresp="#s5:l2">pleysier</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Sullen speulen, dan mooy <rhyme label="c" type="m">weer</rhyme>:</l>
        <l id="s5:l6" met="4" type="+-">Als ick dat denck verheught my <rhyme label="c" type="m" corresp="#s5:l5">weer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
