  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Verhoort, o Godt, mijn woorden <rhyme label="a" type="f">klachtigh</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Laet uw’ Ooren op zijn <rhyme label="b" type="m">ghedaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En wilt doch d’oorsake <rhyme label="b" type="m" corresp="#s1:l2">verstaen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Mijns klaghens en suchten <rhyme label="a" type="f" corresp="#s1:l1">eendrachtigh</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">O Heer <rhyme label="a" type="f" corresp="#s1:l1">Almachtigh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hebt acht op mijn suchten <rhyme label="a" type="f">ghestadigh</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Mijn Godt end’ Koningh groot <rhyme label="b" type="m">gheacht</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dewijl ick tot u met <rhyme label="b" type="m" corresp="#s2:l2">aendacht</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Mijn smeecken doe, o Heer <rhyme label="a" type="f" corresp="#s2:l1">ghenadigh</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Ende <rhyme label="a" type="f" corresp="#s2:l1">weldadigh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Des morgens vroeg voor den <rhyme label="a" type="f">dag-rade</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Sult ghy my verhooren <rhyme label="b" type="m">eenpaer</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Want seer vroegh sal ick u <rhyme label="b" type="m" corresp="#s3:l2">voorwaer</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Bidden, wachtende vroegh end’ <rhyme label="a" type="f" corresp="#s3:l1">spade</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Op u <rhyme label="a" type="f" corresp="#s3:l1">ghenade</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy zijt een Godt, die de <rhyme label="a" type="f">boosheden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Niet en bemint, maer <rhyme label="b" type="m">wederstaet</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">By u zijn de boosdaders <rhyme label="b" type="m" corresp="#s4:l2">quaet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Met haren doen en boose <rhyme label="a" type="f" corresp="#s4:l1">zeden</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Gantsch niet <rhyme label="a" type="f" corresp="#s4:l1">gheleden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De swasen die nae u niet <rhyme label="a" type="f">vraghen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Sullen voor u verschijnen <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Want ghy die hatet, soo men <rhyme label="b" type="m" corresp="#s5:l2">siet</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Die boosheyt doen, sonder <rhyme label="a" type="f" corresp="#s5:l1">vertsaghen</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Iae met <rhyme label="a" type="f" corresp="#s5:l1">behaghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy sult uwe gramschap <rhyme label="a" type="f">bewijsen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Over de leughenaers <rhyme label="b" type="m">ghemeen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Doot-slaghers, bedrieghers met <rhyme label="b" type="m" corresp="#s6:l2">een</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Zijn voor God (dien elk mensch moet <rhyme label="a" type="f" corresp="#s6:l1">prijsen</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Een groot <rhyme label="a" type="f" corresp="#s6:l1">af-grijsen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer door u goetheyt hoogh <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Die ghy my bewijst, sal ick <rhyme label="b" type="m">gaen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Om u, o Heer, te roepen <rhyme label="b" type="m" corresp="#s7:l2">aen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">In u Huys, daer ick sal mits <rhyme label="a" type="f" corresp="#s7:l1">desen</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Godtvruchtigh <rhyme label="a" type="f" corresp="#s7:l1">wesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Geleyt my, Heer, en laet doch <rhyme label="a" type="f">blijcken</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Aene my u goetheyt, dat my <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Mijn haters brenghen in ‘t <rhyme label="b" type="m" corresp="#s8:l2">verdriet</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">Leyt my uwen padt <rhyme label="a" type="f" corresp="#s8:l1">desghelijcken</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Sonder af <rhyme label="a" type="f" corresp="#s8:l1">wijcken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Daer is geen waerheyt in haer <rhyme label="a" type="f">monden</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Haer hert is valsch, arghlistigh, <rhyme label="b" type="m">straf</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Haer Keel is als een open <rhyme label="b" type="m" corresp="#s9:l2">graf</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Haer Tongh is vol smeeckens <rhyme label="a" type="f" corresp="#s9:l1">bevonden</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Tot allen <rhyme label="a" type="f" corresp="#s9:l1">stonden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Verderfts’, en doet te niet haer <rhyme label="a" type="f">namen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Breeckt haer raet-slaghen, end’ haer <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Verstroyts’ om haer boosheyt seer <rhyme label="b" type="m" corresp="#s10:l2">koen</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">Want, Heer, zy soecken alle <rhyme label="a" type="f" corresp="#s10:l1">t’samen</rhyme></l>
        <l id="s10:l5" met="2" type="-+">U te <rhyme label="a" type="f" corresp="#s10:l1">beschamen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Maer verheugt hen ‘t gemoet en <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Die op u betrouwen <rhyme label="b" type="m">altijdt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dats’ in u Heer, werden <rhyme label="b" type="m" corresp="#s11:l2">verblijt</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Die uwen naem in ‘t herte <rhyme label="a" type="f" corresp="#s11:l1">binnen</rhyme></l>
        <l id="s11:l5" met="2" type="-+">Troulijck <rhyme label="a" type="f" corresp="#s11:l1">beminnen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Want ghy zijt milt end’ <rhyme label="a" type="f">overvloedigh</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Den vromen Man, Heer <rhyme label="b" type="m">goedertier</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Met uwe gunst deckt ghy hem <rhyme label="b" type="m" corresp="#s12:l2">schier</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Als met den schilt, ghy zijt soo <rhyme label="a" type="f" corresp="#s12:l1">goedigh</rhyme></l>
        <l id="s12:l5" met="2" type="-+">End’ <rhyme label="a" type="f" corresp="#s12:l1">seerlanghmoedigh</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
