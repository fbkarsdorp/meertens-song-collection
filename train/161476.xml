<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>161476</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>O kerstnacht schoner dan de dagen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk roep, o God! met groot <rhyme label="a" type="f">verlangen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Tot u nu met betraende <rhyme label="a" type="f" corresp="#s1:l1">wangen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">O Heer! wanneer sal zijn dien <rhyme label="b" type="m">dagh</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat ghy mijn Ziele sult <rhyme label="c" type="f">opwecken</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En tot u al mijn sinnen <rhyme label="c" type="f" corresp="#s1:l4">trecken</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Op dat ick u na loopen <rhyme label="b" type="m" corresp="#s1:l3">mach</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och! ick ben traegh, mijn hert en <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Gaen dit en dat te seer <rhyme label="a" type="f" corresp="#s2:l1">beminnen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Oock aertsche sorge mijn <rhyme label="b" type="m">beswaert</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Och Heer! veel doornen in my <rhyme label="c" type="f">steecken</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die vaeck, mijn heyligen yver <rhyme label="c" type="f" corresp="#s2:l4">breecken</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En trecken mijnen geest ter <rhyme label="b" type="m" corresp="#s2:l3">aerdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Heer laet niet toe, dat 't minst voor 't <rhyme label="a" type="f">meeste</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Het quaedt voor 't goedt, 't vlees voor den <rhyme label="a" type="f" corresp="#s3:l1">geeste</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Den Heer voor sijne slave <rhyme label="b" type="m">wijckt</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Wilt dees disord're in my <rhyme label="c" type="f">weeren</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En laet het waerdste <rhyme label="c" type="f" corresp="#s3:l4">trumpheren</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Als seuvereyn die noyt <rhyme label="b" type="m" corresp="#s3:l3">beswijckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ey laet! u geest my steeds <rhyme label="a" type="f">regeren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Mijn quade sinnen <rhyme label="a" type="f" corresp="#s4:l1">overheeren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En dat u heyl'gen naem ter <rhyme label="b" type="m">eer</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Ick bid om praght noch groote <rhyme label="c" type="f">goeden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Noch om onnutte over <rhyme label="c" type="f" corresp="#s4:l4">vloeden</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Maer dit als t'beste ick <rhyme label="b" type="m" corresp="#s4:l3">begeer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo langh ick dit niet heb <rhyme label="a" type="f">verkregen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Soo is mijn Ziel altijdt <rhyme label="a" type="f" corresp="#s5:l1">verlegen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Och! 't woeligh hert is noyt <rhyme label="b" type="m">vernoeght</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Het weynigh dat ick kan <rhyme label="c" type="f">gevoelen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dat kan mijn groote lust niet <rhyme label="c" type="f" corresp="#s5:l4">koelen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Noch maecken dat mijn Ziel niet <rhyme label="b" type="m" corresp="#s5:l3">wroecht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hoe lange Heer? sal ick dus <rhyme label="a" type="f">klagen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dit lastigh pack verdrietigh <rhyme label="a" type="f" corresp="#s6:l1">dragen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ghy roept seer gunstigh komt tot <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Ick kom tot u belast, <rhyme label="c" type="f">beladen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Vol honger dorst wilt mijn <rhyme label="c" type="f" corresp="#s6:l4">versaden</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Mijn droeve Ziel weer maecken <rhyme label="b" type="m" corresp="#s6:l3">bly</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och! naer u woordt verhoort mijn <rhyme label="a" type="f">smeecken</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Ghy kent mijn last, weet mijn <rhyme label="a" type="f" corresp="#s7:l1">gebreken</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Verhoort mijn Iesu lieve <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Siet hoe ick met bedroefde <rhyme label="c" type="f">Zielen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Voor u ootmoedigh kom te <rhyme label="c" type="f" corresp="#s7:l4">knielen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En legh hier voor u voeten <rhyme label="b" type="m" corresp="#s7:l3">neer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och Heer! ick wil met heete <rhyme label="a" type="f">tranen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">U stagh op u belofte <rhyme label="a" type="f" corresp="#s8:l1">manen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Tot dat ghy my verhooren <rhyme label="b" type="m">sult</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">O ghy! mijn Ziel, wilt vast <rhyme label="c" type="f">vertrouwen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">De Heer, die sal sijn woordt wel <rhyme label="c" type="f" corresp="#s8:l4">houwen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Verbeydt den tijdt maer met <rhyme label="b" type="m" corresp="#s8:l3">geduldt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
