    <tags/>
    <melody>Fortuin gij doet mijn zinnen</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DIen kostelijcken <rhyme label="a" type="f">Tempel</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In Israels <rhyme label="b" type="m">Hooft-Stadt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Heeft binnen haren <rhyme label="a" type="f" corresp="#s1:l1">Drempel</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Twee Offeren <rhyme label="b" type="m" corresp="#s1:l2">ghehadt</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">In d'eene schiep de <rhyme label="c" type="m">brandt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In kruyden <rhyme label="c" type="m" corresp="#s1:l5">veel-der-handt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Een geur vol soete <rhyme label="d" type="f">reucken</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Daer Godt self lust in <rhyme label="c" type="m" corresp="#s1:l5">vant</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">In d'ander wordt het <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Der Beesten <rhyme label="b" type="m">uytgekeelt</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">My dunckt, dat is nu <rhyme label="a" type="f" corresp="#s2:l1">even</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En oprecht Christens <rhyme label="b" type="m" corresp="#s2:l2">beeldt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Wanneer 't gheloof 't <rhyme label="c" type="m">ghemoet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Tot Gode suchten <rhyme label="c" type="m" corresp="#s2:l5">doet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Soo riecken die <rhyme label="d" type="f">ghebeden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Voor Godt den Heere <rhyme label="c" type="m" corresp="#s2:l5">soet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wanneer als zy oock <rhyme label="a" type="f">slachten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Haer sondelijcken <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo sal de Heer dat <rhyme label="a" type="f" corresp="#s3:l1">achten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Een Offer duer en <rhyme label="b" type="m" corresp="#s3:l2">waert</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Wanneer de Heer is <rhyme label="c" type="m">gram</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Soo slacht gheen Os noch <rhyme label="c" type="m" corresp="#s3:l5">Ram</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Maer keelt uw snoode <rhyme label="d" type="f">lusten</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Waer uyt sijn gramschap <rhyme label="c" type="m" corresp="#s3:l5">quam</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
