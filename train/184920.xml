    <melody>Ga wereld met uw ijdelheid</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">LAet klincken, Jeught, een bly <rhyme label="a" type="m">geschal</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Uw' Moeder is uyt t'aerdtsche <rhyme label="a" type="m" corresp="#s1:l1">dal</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Geklommen tot des Hemels <rhyme label="b" type="m">throon</rhyme>;</l>
        <l id="s1:l4" met="4" type="-+">Sy heeft ontfangen d'hooghste <rhyme label="b" type="m" corresp="#s1:l3">Kroon</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Godts liefsten <rhyme label="c" type="m">pandt</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Is <rhyme label="c" type="m" corresp="#s1:l5">triumphant</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Gestelt aen Jesus <rhyme label="c" type="m" corresp="#s1:l5">rechter-handt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Haer Ziele brande meer en <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Tot dat sy die gaf aen den <rhyme label="a" type="m" corresp="#s2:l1">Heer</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Sy is ontslaepen sonder <rhyme label="b" type="m">pyn</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Omringelt met des Hemels <rhyme label="b" type="m" corresp="#s2:l3">schyn</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Haer saegen <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Ten Hemel <rhyme label="c" type="m" corresp="#s2:l5">gaen</rhyme></l>
        <l id="s2:l7" met="4" type="-+">d'Apostels, die men rondt sagh <rhyme label="c" type="m" corresp="#s2:l5">staen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godt quam fyn Moeder te <rhyme label="a" type="m">gemoedt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Om haer te schencken t'eeuwigh <rhyme label="a" type="m" corresp="#s3:l1">goedt</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Haer kroonde de <rhyme label="b" type="m">Dryvuldigheyt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Het Hemels hof gaf <rhyme label="b" type="m" corresp="#s3:l3">danckbaerheyt</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Des Engels <rhyme label="c" type="m">sanck</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Gaf soet <rhyme label="c" type="m" corresp="#s3:l5">geklanck</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Gaf in haer Krooning' lof en <rhyme label="c" type="m" corresp="#s3:l5">danck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Het lichaem boven Sonn', en <rhyme label="a" type="m">Maen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Is uyt het graf klaer op <rhyme label="a" type="m" corresp="#s4:l1">gestaen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En, als Elias door de <rhyme label="b" type="m">locht</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Van d'Engels voor den Heer <rhyme label="b" type="m" corresp="#s4:l3">gebrocht</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Het heeft de <rhyme label="c" type="m">Kroon</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Naest Christi <rhyme label="c" type="m" corresp="#s4:l5">Throon</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Vereenight met de Ziel voor <rhyme label="c" type="m" corresp="#s4:l5">loon</rhyme>.</l>
      </lg>
    </lg>
  </text>
