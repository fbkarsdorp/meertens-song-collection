    <melody>Het ruisende beekje</melody>
  <author>Jan Jansz. Starter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Loflycke vrienden, hier <rhyme label="a" type="m">vergaerd</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wild op de blyde <rhyme label="b" type="f">wetten</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van dese Feeste <rhyme label="b" type="f" corresp="#s1:l2">letten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die hier de meeste vreughde <rhyme label="a" type="m" corresp="#s1:l1">baert</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En d'alderbraefste <rhyme label="b" type="f" corresp="#s1:l2">pretten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die salmen 't hooghste <rhyme label="b" type="f" corresp="#s1:l2">setten</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">De Bruydegom <rhyme label="c" type="m">bedingt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Dat niemand yet <rhyme label="c" type="m" corresp="#s1:l7">voortbringt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">'t Welck d'Ed'le vreucht <rhyme label="c" type="m" corresp="#s1:l7">bedwingt</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Maer dat een yder <rhyme label="c" type="m" corresp="#s1:l7">singt</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Bly-hartigh danst en <rhyme label="c" type="m" corresp="#s1:l7">springt</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">En gantsch geen vreughde wil <rhyme label="b" type="f" corresp="#s1:l2">beletten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dit is doch voor den <rhyme label="a" type="m">Bruydegom</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Den soetsten nacht der <rhyme label="b" type="f">nachten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">'t Loon voor syn lange <rhyme label="b" type="f" corresp="#s2:l2">wachten</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Dies singt, danst, springt al t'samen <rhyme label="a" type="m" corresp="#s2:l1">om</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wild nae de vreughde <rhyme label="b" type="f" corresp="#s2:l2">trachten</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Met hart, sin, en <rhyme label="b" type="f" corresp="#s2:l2">gedachten</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Sy beyde syn <rhyme label="c" type="m">bekoord</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Om te hooren datmen <rhyme label="c" type="m" corresp="#s2:l7">hoord</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Dat een yeder met een <rhyme label="c" type="m" corresp="#s2:l7">woord</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Breng vreemde kluchten <rhyme label="c" type="m" corresp="#s2:l7">voord</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Naer alle vreughde <rhyme label="c" type="m" corresp="#s2:l7">spoord</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">En al wat blydschap steurt, <rhyme label="b" type="f" corresp="#s2:l2">verachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wenscht met my toe den <rhyme label="a" type="m">Bruydegom</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En Bruydt, des Heeren <rhyme label="b" type="f">zegen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Daer veel is aen <rhyme label="b" type="f" corresp="#s3:l2">gelegen</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Wel lieve Paer, wy hier <rhyme label="a" type="m" corresp="#s3:l1">rondom</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Tot uwen dienst <rhyme label="b" type="f" corresp="#s3:l2">genegen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wenschen u <rhyme label="b" type="f" corresp="#s3:l2">alderwegen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Geluck tot deser <rhyme label="c" type="m">uur</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En dat het soet noch <rhyme label="c" type="m" corresp="#s3:l7">suur</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Door haet noch nijts <rhyme label="c" type="m" corresp="#s3:l7">gegluur</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">U liefde niet <rhyme label="c" type="m" corresp="#s3:l7">vervuur</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Maer datse Eeuwigh <rhyme label="c" type="m" corresp="#s3:l7">duur</rhyme>,</l>
        <l id="s3:l12" met="4" type="-+">Dit geve God dat u <rhyme label="b" type="f" corresp="#s3:l2">bejegen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wel Noble Jufferkens <rhyme label="a" type="m">wel-aen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wild dan de Bruyd'gom <rhyme label="b" type="f">redde</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Helpt doch de Bruydt te <rhyme label="b" type="f" corresp="#s4:l2">bedde</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Stil, stil, Juffrouw, het sal wel <rhyme label="a" type="m" corresp="#s4:l1">gaen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Ghy hoeft dus niet te <rhyme label="b" type="f" corresp="#s4:l2">peynsen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Noch u voor ons te <rhyme label="b" type="f" corresp="#s4:l2">veynsen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">O soete lieve <rhyme label="c" type="m">Bruydt</rhyme>!</l>
        <l id="s4:l8" met="3" type="-+">Dit 's een ding dat niet <rhyme label="c" type="m" corresp="#s4:l7">beduydt</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">So dat ick nu <rhyme label="c" type="m" corresp="#s4:l7">besluyt</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Het veynsigh kleed moet <rhyme label="c" type="m" corresp="#s4:l7">uyt</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Want dat ghy voor dit <rhyme label="c" type="m" corresp="#s4:l7">kruyt</rhyme></l>
        <l id="s4:l12" met="4" type="-+">Niet vreesen sult wil ick wel <rhyme label="b" type="f" corresp="#s4:l2">wedde</rhyme>.</l>
      </lg>
    </lg>
  </text>
