  <author>Gaudentius van Loemel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Avgustine Grooten <rhyme label="a" type="f">Vader</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">Ons gebeden neemt nu <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En met die voor ons te <rhyme label="a" type="f" corresp="#s1:l1">gader</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Wilt den Schepper tegen <rhyme label="b" type="m" corresp="#s1:l2">gaen</rhyme>!</l>
        <l id="s1:l5" met="4" type="+-">Vwe kudde wilt <rhyme label="c" type="f">beschudde</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Voor den vyandt hier <rhyme label="d" type="m">altijdt</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Want ghy d’eere, door u <rhyme label="e" type="f">leere</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Van alle Prelaten <rhyme label="d" type="m" corresp="#s1:l6">zijdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Aremoed’ is u <rhyme label="a" type="f">behaghen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Ende Armen uwen <rhyme label="b" type="m">loff</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hier in hare herten <rhyme label="a" type="f" corresp="#s2:l1">draghen</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Want den rijckdom is maer <rhyme label="b" type="m" corresp="#s2:l2">stoff</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Door u klaerheyt, ende <rhyme label="c" type="f">waerheyt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Van waer Rechters wordt <rhyme label="d" type="m">bemindt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">‘Tonser baten <rhyme label="e" type="f">honichraten</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Yder in u schriften <rhyme label="d" type="m" corresp="#s2:l6">vindt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dat eens duyster was om <rhyme label="a" type="f">leere</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Ghy verklaert door wijsheyt <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En de woorden vanden <rhyme label="a" type="f" corresp="#s3:l1">Heere</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Maeckt ghy voor ons Hemelsch <rhyme label="b" type="m" corresp="#s3:l2">Broot</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En komt schincken, ons te <rhyme label="c" type="f">drincken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Eenen alderbesten <rhyme label="d" type="m">dranck</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Want ghy ‘t leven ons comt <rhyme label="e" type="f">geven</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Door den soeten Psalmen <rhyme label="d" type="m" corresp="#s3:l6">sanck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Van het leven aller <rhyme label="a" type="f">Clercken</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Ghy den Regel heyligh <rhyme label="b" type="m">schrijft</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die hem mindt met wil en <rhyme label="a" type="f" corresp="#s4:l1">wercken</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">In den wegh des Heeren <rhyme label="b" type="m" corresp="#s4:l2">blijft</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Door u leyden tot Godes <rhyme label="c" type="f">weyden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Ghy ons heylichlijck <rhyme label="d" type="m">bevrijdt</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Tot Godts Rijcke, al <rhyme label="e" type="f">gelijcke</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Doet ons keeren ‘t <rhyme label="d" type="m" corresp="#s4:l6">aldertijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Coninck boven al <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Eer sij u en alle <rhyme label="b" type="m">Loff</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Ghy dryvuldigh <rhyme label="a" type="f" corresp="#s5:l1">uytgeleden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Laet ons in u Hemelsch <rhyme label="b" type="m" corresp="#s5:l2">Hoff</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Zyn geschreven om te <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Met u borgers <rhyme label="d" type="m">altesaem</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Die u loven, al daer <rhyme label="e" type="f">boven</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">En aenbidden uwen <rhyme label="d" type="m" corresp="#s5:l6">naem</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
