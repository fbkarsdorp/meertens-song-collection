    <melody>Schoon boven alle schone</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SChoon boven alle <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Hoe macht <rhyme label="b" type="m">gheschieden</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Dat ghy dus hanght ten <rhyme label="a" type="f" corresp="#s1:l1">toone</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Voor alle <rhyme label="b" type="m" corresp="#s1:l2">lien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dat ghy dus hanght <rhyme label="a" type="f">ghenaghelt</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Vlack inden <rhyme label="b" type="m">wint</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Bereghent en <rhyme label="a" type="f" corresp="#s2:l1">behaghelt</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Mijn liefste <rhyme label="b" type="m" corresp="#s2:l2">kint</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy die 't al hebt <rhyme label="a" type="f">gheschaepen</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Wet vremt <rhyme label="b" type="m">bestier</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Hebdy gheen plaets om <rhyme label="a" type="f" corresp="#s3:l1">slaepen</rhyme>:</l>
        <l id="s3:l4" met="2" type="-+">Elders dan <rhyme label="b" type="m" corresp="#s3:l2">hier</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Waer mach u bedde <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Soo fraey <rhyme label="b" type="m">bebloemt</rhyme>?</l>
        <l id="s4:l3" met="3" type="-+">Dat u bruydt uyt <rhyme label="a" type="f" corresp="#s4:l1">ghelesen</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Soo dickmael <rhyme label="b" type="m" corresp="#s4:l2">roemt</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Voor wie ded' sy doch <rhyme label="a" type="f">maecken</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Dat <rhyme label="b" type="m">ledekant</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat sestich mannen <rhyme label="a" type="f" corresp="#s5:l1">waecken</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Met scherp in <rhyme label="b" type="m" corresp="#s5:l2">d'hant</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ha! 't hert gaet my <rhyme label="a" type="f">ontsincken</rhyme></l>
        <l id="s6:l2" met="2" type="-+">In dit <rhyme label="b" type="m">ghesicht</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wie sou sulckx van u <rhyme label="a" type="f" corresp="#s6:l1">dincken</rhyme>?</l>
        <l id="s6:l4" met="2" type="-+">O eeuwigh <rhyme label="b" type="m" corresp="#s6:l2">Licht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wee my bedruckte <rhyme label="a" type="f">Moeder</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Wee my wat <rhyme label="b" type="m">raet</rhyme>?</l>
        <l id="s7:l3" met="3" type="-+">Alst nu , o mijn <rhyme label="a" type="f" corresp="#s7:l1">behoeder</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Met u soo <rhyme label="b" type="m" corresp="#s7:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Sijt ghy dan doot mijne <rhyme label="a" type="f">Soone</rhyme>.</l>
        <l id="s8:l2" met="2" type="-+">Ist dan <rhyme label="b" type="m">ghedaen</rhyme>?</l>
        <l id="s8:l3" met="3" type="-+">Sijt ghy mijn hulp <rhyme label="a" type="f" corresp="#s8:l1">ghewoone</rhyme>?</l>
        <l id="s8:l4" met="2" type="-+">Dus vroegh <rhyme label="b" type="m" corresp="#s8:l2">ontgaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ach Simeon vol <rhyme label="a" type="f">weerden</rhyme>!</l>
        <l id="s9:l2" met="2" type="-+">Ach! Ach! O <rhyme label="b" type="m">smert</rhyme>!</l>
        <l id="s9:l3" met="3" type="-+">Nu gaen u seven <rhyme label="a" type="f" corresp="#s9:l1">sweerden</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Dweersch door mijn <rhyme label="b" type="m" corresp="#s9:l2">hert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
