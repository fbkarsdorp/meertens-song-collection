<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24582</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
    </tags>
    <melody>Dat geschiedde op een nieuwjaarsnacht</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEn   vliegenden aern die laet ons <rhyme label="a" type="m">eren</rhyme></l>
        <l id="s1:l2" met="4" type="-+">den gemynden apostel  des groten <rhyme label="a" type="m" corresp="#s1:l1">here</rhyme></l>
        <l id="s1:l3" met="4" type="-+">hi heeft gevlagen ende <rhyme label="b" type="m">gerust</rhyme></l>
        <l id="s1:l4" met="4" type="-+">al op ons heren   werdige <rhyme label="b" type="m" corresp="#s1:l3">borst</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daer toech hi wt soe diepen <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">doe hi screef god is die <rhyme label="a" type="m" corresp="#s2:l1">mynne</rhyme></l>
        <l id="s2:l3" met="4" type="-+">die daer in blyuet die blyuet in <rhyme label="b" type="m">gade</rhyme></l>
        <l id="s2:l4" met="4" type="-+">dat spreket Johannes der mynnen <rhyme label="b" type="m" corresp="#s2:l3">bade</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Syne vlogelen heeft hi <rhyme label="a" type="m">wtgespreyt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">te vliegen is hi al <rhyme label="a" type="m" corresp="#s3:l1">bereyt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">te scouwen inde sonnen <rhyme label="b" type="m">schyn</rhyme></l>
        <l id="s3:l4" met="4" type="-+">dat is hem altoes sonder <rhyme label="b" type="m" corresp="#s3:l3">pyn</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als hem die sonne heeft <rhyme label="a" type="m">verbrant</rhyme></l>
        <l id="s4:l2" met="4" type="-+">soe styget hi neder <rhyme label="a" type="m" corresp="#s4:l1">altehant</rhyme></l>
        <l id="s4:l3" met="4" type="-+">al doer die wateren totter <rhyme label="b" type="m">stont</rhyme></l>
        <l id="s4:l4" met="4" type="-+">soe wort hi weder al <rhyme label="b" type="m" corresp="#s4:l3">verjoget</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Syn spyse moet opter eerder <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s5:l2" met="4" type="-+">soe vlieget hi vander sonnen <rhyme label="a" type="m" corresp="#s5:l1">schyn</rhyme></l>
        <l id="s5:l3" met="4" type="-+">hy stoet syn neb op enen  <rhyme label="b" type="m">steen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">dat doet die edel aern <rhyme label="b" type="m" corresp="#s5:l3">alleen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy vlyeget op enen berch <rhyme label="a" type="m">groet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">daer scouwet hi syns heren bitter <rhyme label="a" type="m" corresp="#s6:l1">doet</rhyme></l>
        <l id="s6:l3" met="4" type="-+">syn herte was soe seer <rhyme label="b" type="m">gewont</rhyme></l>
        <l id="s6:l4" met="4" type="-+">doe hi onder den cruce <rhyme label="b" type="m" corresp="#s6:l3">stont</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hem was soe wee in synen <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s7:l2" met="4" type="-+">doe hi sach dat roede <rhyme label="a" type="m" corresp="#s7:l1">bloet</rhyme></l>
        <l id="s7:l3" met="4" type="-+">dat van bauen neder <rhyme label="b" type="m">ran</rhyme></l>
        <l id="s7:l4" met="4" type="-+">al van dat edelle suete <rhyme label="b" type="m" corresp="#s7:l3">lam</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Enen groten scat waert hem <rhyme label="a" type="m">beuaelen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">dat en sy ons niet <rhyme label="a" type="m" corresp="#s8:l1">verhaelen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">dat was die edelle moeder <rhyme label="b" type="m">fyn</rhyme></l>
        <l id="s8:l4" met="4" type="-+">die solde hi nemen in die huede <rhyme label="b" type="m" corresp="#s8:l3">syn</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Deze gyfte yget <rhyme label="a" type="m">danck</rhyme></l>
        <l id="s9:l2" met="4" type="-+">al was die wyssel alte <rhyme label="a" type="m" corresp="#s9:l1">cranck</rhyme></l>
        <l id="s9:l3" met="4" type="-+">want voer den heren waert oer den <rhyme label="b" type="m">knecht</rhyme></l>
        <l id="s9:l4" met="4" type="-+">dat lot en viel niet alte <rhyme label="b" type="m" corresp="#s9:l3">recht</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Die aern vloech op mit synen <rhyme label="a" type="m">scat</rhyme></l>
        <l id="s10:l2" met="4" type="-+">hi keerde weder in die <rhyme label="a" type="m" corresp="#s10:l1">stat</rhyme></l>
        <l id="s10:l3" met="4" type="-+">hi moste daer laten synen <rhyme label="b" type="m">heer</rhyme></l>
        <l id="s10:l4" met="4" type="-+">dien hi van herten mynden <rhyme label="b" type="m" corresp="#s10:l3">seer</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Die aerne sprack dicke myt sueten <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Och kynderkyns nv holt die <rhyme label="a" type="m" corresp="#s11:l1">mynne</rhyme></l>
        <l id="s11:l3" met="4" type="-+">dat leerde mi die meyster <rhyme label="b" type="m">guet</rhyme></l>
        <l id="s11:l4" met="4" type="-+">want doedi dat et is <rhyme label="b" type="m" corresp="#s11:l3">genoech</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Doe hi genakede synre <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s12:l2" met="4" type="-+">doe waert hi weerdelic <rhyme label="a" type="m" corresp="#s12:l1">genoet</rhyme></l>
        <l id="s12:l3" met="4" type="-+">nu comet gemynde int ryke <rhyme label="b" type="m">myn</rhyme></l>
        <l id="s12:l4" met="4" type="-+">ende werscappet mitten broederen <rhyme label="b" type="m" corresp="#s12:l3">dyn</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Die aerne vloech op mit ziele ende <rhyme label="a" type="m">lyf</rhyme></l>
        <l id="s13:l2" met="4" type="-+">soe tuget ons die hilige <rhyme label="a" type="m" corresp="#s13:l1">scryft</rhyme></l>
        <l id="s13:l3" met="4" type="-+">men vant syn graf nae synne <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s13:l4" met="4" type="-+">wonderlic vol hemels <rhyme label="b" type="m" corresp="#s13:l3">broet</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Dese aern die moet ons wesen <rhyme label="a" type="m">by</rhyme></l>
        <l id="s14:l2" met="4" type="-+">in allen tyden waer dattet <rhyme label="a" type="m" corresp="#s14:l1">sy</rhyme></l>
        <l id="s14:l3" met="4" type="-+">sonderlynge in onser <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s14:l4" met="4" type="-+">ende brengen ons in die blyscap <rhyme label="b" type="m" corresp="#s14:l3">groet</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
