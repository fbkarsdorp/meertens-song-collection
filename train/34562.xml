  <author>Jan Mommaert</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SOeten tydt, zyt ghy dus <rhyme label="a" type="f">henen</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s1:l1">verdwenen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die my soo veel hope <rhyme label="b" type="m">gaf</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">En laet ghy my in  het <rhyme label="c" type="f">reysen</rhyme> //</l>
        <l id="s1:l5" met="2" type="+-">de <rhyme label="c" type="f" corresp="#s1:l4">ghepeysen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Rechts van 't naer en eensaem <rhyme label="b" type="m" corresp="#s1:l3">graf</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Sal ick noyt de <rhyme label="a" type="f">purper-roosen</rhyme></l>
        <l id="s2:l2" met="2" type="+-">We'er sien <rhyme label="a" type="f" corresp="#s2:l1">bloosen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die myn wanghen brochten <rhyme label="b" type="m">mé</rhyme>?</l>
        <l id="s2:l4" met="4" type="+-">En de lelien <rhyme label="c" type="f">her-leven</rhyme> //</l>
        <l id="s2:l5" met="2" type="+-">die daer <rhyme label="c" type="f" corresp="#s2:l4">neven</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Hielen hunne plaets en <rhyme label="b" type="m" corresp="#s2:l3">sté</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sal ick niet meer door myn <rhyme label="a" type="f">loncken</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Duysent <rhyme label="a" type="f" corresp="#s3:l1">voncken</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Op de Minnaers schieten <rhyme label="b" type="m">uyt</rhyme>?</l>
        <l id="s3:l4" met="4" type="+-">Sal ick noyt meer herten <rhyme label="c" type="f">wonden</rhyme> //</l>
        <l id="s3:l5" met="2" type="+-">maer <rhyme label="c" type="f" corresp="#s3:l4">gheschonden</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Blyven uw verniel ten <rhyme label="b" type="m" corresp="#s3:l3">buyt</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Schoon des winters sneghe <rhyme label="a" type="f">buyen</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">'t Kalme <rhyme label="a" type="f" corresp="#s4:l1">Zuyen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Lacchen uyt, en doen het <rhyme label="b" type="m">landt</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Als vergaen; noch komt de <rhyme label="c" type="f">Lente</rhyme> //</l>
        <l id="s4:l5" met="2" type="+-">dat we'er <rhyme label="c" type="f" corresp="#s4:l4">enten</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Op den eersten soeten <rhyme label="b" type="m" corresp="#s4:l3">standt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ieder spruytjen springht uyt <rhyme label="a" type="f">d'aerde</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Met de <rhyme label="a" type="f" corresp="#s5:l1">waerde</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Die het van te voren <rhyme label="b" type="m">hadt</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Waerom kan ick oock soo <rhyme label="c" type="f">mede</rhyme> //</l>
        <l id="s5:l5" met="2" type="+-">niet <rhyme label="c" type="f" corresp="#s5:l4">her-smeden</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Mynen eens verloren <rhyme label="b" type="m" corresp="#s5:l3">schat</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Maer wat magh ick ligghen <rhyme label="a" type="f">suchten</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Sonder <rhyme label="a" type="f" corresp="#s6:l1">vruchten</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Weet ick niet dat 't brooste <rhyme label="b" type="m">broos</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Sterckheyt is by 's menschen <rhyme label="c" type="f">kranckheyt</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">die met stanck <rhyme label="c" type="f" corresp="#s6:l4">scheyt</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Tot leer' van elck <rhyme label="b" type="m" corresp="#s6:l3">maeghden-roos</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
