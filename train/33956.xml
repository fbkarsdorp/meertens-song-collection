  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">De valsche <rhyme label="a" type="f">Phariseën</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die sloegen t'samen <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Om Jesum in sijn <rhyme label="a" type="f" corresp="#s1:l1">reën</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Te krijgen eens <rhyme label="b" type="m" corresp="#s1:l2">gevaet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Hier toe vermanen sy haer <rhyme label="c" type="m">party</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">De loos' <rhyme label="d" type="f">Herodianen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Om haer nu te staen <rhyme label="c" type="m" corresp="#s1:l5">by</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sy t'samen <rhyme label="a" type="f">onderrechten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met eenen loosen <rhyme label="b" type="m">vondt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Haer onbeschaemde <rhyme label="a" type="f" corresp="#s2:l1">knechten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In eenen valschen <rhyme label="b" type="m" corresp="#s2:l2">grondt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Om door haer lagen, hem so in 't <rhyme label="c" type="m">endt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Te mogen <rhyme label="d" type="f">overdragen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Aen d'weerelds <rhyme label="c" type="m" corresp="#s2:l5">President</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Met groote <rhyme label="a" type="f">beveynstheeden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O Meester, seggen <rhyme label="b" type="m">sy</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Gy leert en spreekt goe' <rhyme label="a" type="f" corresp="#s3:l1">reden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Al t'samen weeten <rhyme label="b" type="m" corresp="#s3:l2">wy</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Gy sijt waeraghtigh, en gy niet <rhyme label="c" type="m">past</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Op 't aenschijn van een <rhyme label="d" type="f">maghtigh</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Gy leert Goods wegen <rhyme label="c" type="m" corresp="#s3:l5">vast</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dus wilt ons <rhyme label="a" type="f">onderwijsen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Seght wat of u dunkt <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Of men de Keyser <rhyme label="a" type="f" corresp="#s4:l1">cysen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Of tol betalen <rhyme label="b" type="m" corresp="#s4:l2">moet</rhyme>?</l>
        <l id="s4:l5" met="4" type="-+">Maer hy bepeynsde, haer loos <rhyme label="c" type="m">gewoont</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En seyd, o gy <rhyme label="d" type="f">beveynsde</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Aen mijn den Penningh <rhyme label="c" type="m" corresp="#s4:l5">toont</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy hem den Penningh <rhyme label="a" type="f">geeven</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En Iesus seyt tot <rhyme label="b" type="m">haer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wat staet daer op <rhyme label="a" type="f" corresp="#s5:l1">geschreeven</rhyme>?</l>
        <l id="s5:l4" met="3" type="-+">Seght mijn wiens Beelt staet <rhyme label="b" type="m" corresp="#s5:l2">daer</rhyme>?</l>
        <l id="s5:l5" met="4" type="-+">En sy antwoorden, des Keysers <rhyme label="c" type="m">Beelt</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Als Iesus dat <rhyme label="d" type="f">aen-hoorden</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Voorsichtelijk <rhyme label="c" type="m" corresp="#s5:l5">beveelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wilt dan den Keyser <rhyme label="a" type="f">geeven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Het sijn, na uwe <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En geeft Godt daer <rhyme label="a" type="f" corresp="#s6:l1">beneeven</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Het geene Godt <rhyme label="b" type="m" corresp="#s6:l2">behoort</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Als sy dit hoorden, waren s' <rhyme label="c" type="m">onklaer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Sy konden geene <rhyme label="d" type="f">woorden</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Berispen by de <rhyme label="c" type="m" corresp="#s6:l5">Schaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus met <rhyme label="a" type="f">verwonderingen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Was hare spraek <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Sy t'samen van hem <rhyme label="a" type="f" corresp="#s7:l1">gingen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En lieten hem daer <rhyme label="b" type="m" corresp="#s7:l2">staen</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">O goede Heere, gy sijt te <rhyme label="c" type="m">wijs</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">t' Vergeefs sy u <rhyme label="d" type="f">tenteeren</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Aldus behaelt gy <rhyme label="c" type="m" corresp="#s7:l5">prijs</rhyme>.</l>
      </lg>
    </lg>
  </text>
