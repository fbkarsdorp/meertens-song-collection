  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">By een Christalyne <rhyme label="a" type="m">vliet</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">By een Christalyne <rhyme label="a" type="m" corresp="#s1:l1">vliet</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Hoord' ick Tirsis <rhyme label="b" type="f">quelen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Een bevalligh <rhyme label="a" type="m" corresp="#s1:l1">Minne-liedt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Op een nieuw' ghesenden <rhyme label="a" type="m" corresp="#s1:l1">riedt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Pooghd' ick het nae te <rhyme label="b" type="f" corresp="#s1:l3">spelen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Tirsis songh, mijn schoon' <rhyme label="a" type="m">Amint'</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Tirsis songh, mijn schoon' <rhyme label="a" type="m" corresp="#s2:l1">Amint'</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">'k Sal u noyt <rhyme label="b" type="f">begeven</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Troost my doch die u <rhyme label="a" type="m" corresp="#s2:l1">bemint</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Eer dat my de doodt <rhyme label="a" type="m" corresp="#s2:l1">verslint</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In 't beste van mijn <rhyme label="b" type="f" corresp="#s2:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Liev' Aminte schoone <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Liev' Aminte schoone <rhyme label="a" type="m" corresp="#s3:l1">Maeght</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Puyck der <rhyme label="b" type="f">Herderinnen</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Hoordt hoe uwen Minnaer <rhyme label="a" type="m" corresp="#s3:l1">klaeght</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Die u trouwe Liefde <rhyme label="a" type="m" corresp="#s3:l1">draeght</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ghy toont hem <rhyme label="b" type="f" corresp="#s3:l3">weder-minne</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'k Sal u al mijn leven <rhyme label="a" type="m">langh</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">'k Sal u al mijn leven <rhyme label="a" type="m" corresp="#s4:l1">langh</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Op hoop van <rhyme label="b" type="f">ghenieten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">(Al maeckt' ghy 't my noch soo <rhyme label="a" type="m" corresp="#s4:l1">bangh</rhyme>)</l>
        <l id="s4:l5" met="4" type="+-">Prijsen in mijn Herders <rhyme label="a" type="m" corresp="#s4:l1">sangh</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">'t En sal my noyt <rhyme label="b" type="f" corresp="#s4:l3">verdrieten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Mit soo quam Aminte <rhyme label="a" type="m">daer</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Mit soo quam Aminte <rhyme label="a" type="m" corresp="#s5:l1">daer</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Riep ey klaeght niet <rhyme label="b" type="f">verder</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Maeckt voortaen gheen meer <rhyme label="a" type="m" corresp="#s5:l1">misbaer</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">'k Houd' u voor mijn Liefste <rhyme label="a" type="m" corresp="#s5:l1">Kaer</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En mijn Ghetrouwen <rhyme label="b" type="f" corresp="#s5:l3">Herder</rhyme>.</l>
      </lg>
    </lg>
  </text>
