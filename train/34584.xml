  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Soud' ick gaen een pintjen <rhyme label="a" type="f">knuysen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Als ick van te voren <rhyme label="b" type="m">plagh</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'k Vind' gheen gelt tot myn <rhyme label="b" type="m" corresp="#s1:l2">gelagh</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Myn broeck weet sy soo te <rhyme label="a" type="f" corresp="#s1:l1">luysen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En sy maeckt myn beurs soo <rhyme label="c" type="m">pluys</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dat ick vind' noch munt noch <rhyme label="c" type="m" corresp="#s1:l5">kruys</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Sy doet niet al my <rhyme label="a" type="f">verwyten</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Dat ick al haer geldt <rhyme label="b" type="m">verteer</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dagh'lycx bras, en brom, en <rhyme label="b" type="m" corresp="#s2:l2">smeer</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Mocht ick haer den rugh <rhyme label="a" type="f" corresp="#s2:l1">in-smyten</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Soo had sy haer rechte <rhyme label="c" type="m">deel</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En ick waer vry van <rhyme label="c" type="m" corresp="#s2:l5">krakeel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sit ick somtyts een half <rhyme label="a" type="f">uerken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">By myn vrienden wat te <rhyme label="b" type="m">laet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sy verwyt dat metter <rhyme label="b" type="m" corresp="#s3:l2">daet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En dan komt myn schoon <rhyme label="a" type="f" corresp="#s3:l1">postuerken</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Self my roepen uyt Â´t <rhyme label="c" type="m">ghelach</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Daer ick al seen peerdt om <rhyme label="c" type="m" corresp="#s3:l5">lach</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dan noemt sy my satte <rhyme label="a" type="f">beeste</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Satte pry, en satte <rhyme label="b" type="m">fiel</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'k Wensch het Wyf dat s'op myn <rhyme label="b" type="m" corresp="#s4:l2">ziel</rhyme></l>
        <l id="s4:l4" met="4" type="+-">In de helle waer te <rhyme label="a" type="f" corresp="#s4:l1">feeste</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En daer maeckte dit <rhyme label="c" type="m">rumoer</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En soo quyt waer die quaey <rhyme label="c" type="m" corresp="#s4:l5">hoer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Vrienden, die my 't hooft siet <rhyme label="a" type="f">krouwen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Siet doch desen handel <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Wilt ghy dese pest <rhyme label="b" type="m" corresp="#s5:l2">ont-gaen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Wacht u soo een wyf te <rhyme label="a" type="f" corresp="#s5:l1">trouwen</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">On-ghebonden, los, en <rhyme label="c" type="m">vry</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Maeckt een ieders herte <rhyme label="c" type="m" corresp="#s5:l5">bly</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
