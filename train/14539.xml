    <melody>Schoon liefje jent zeer excellent</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Aegidius Haeffacker</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Christ'nen och // Die leven <rhyme label="a" type="m">noch</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt ghy Godts eer <rhyme label="b" type="f">vermeeren</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Sonder vertogh // Soo soeckt nu <rhyme label="a" type="m" corresp="#s1:l1">doch</rhyme></l>
        <l id="s1:l4" met="6" type="-+">Een Kerck sonder bedrogh, Een Kerck sonder <rhyme label="a" type="m" corresp="#s1:l1">bedrogh</rhyme></l>
        <l id="s1:l5" met="3" type="-+">D'Ecclesie vol <rhyme label="b" type="f" corresp="#s1:l2">eeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De waerheyt jent // Seer <rhyme label="a" type="m">excellent</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Sal altijdt by haer <rhyme label="b" type="f">blijven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Haer fondament // Dat is <rhyme label="a" type="m" corresp="#s2:l1">gheprent</rhyme></l>
        <l id="s2:l4" met="6" type="-+">Op Godts beloft bekent, Op Godts beloft <rhyme label="a" type="m" corresp="#s2:l1">bekent</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Als de Propheten <rhyme label="b" type="f" corresp="#s2:l2">schrijven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit 's mijn verbondt // Tot aller <rhyme label="a" type="m">stondt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met haer-liens // seydt den <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Mijn Gheest oorkondt // Mijn woordt goet <rhyme label="a" type="m" corresp="#s3:l1">rondt</rhyme></l>
        <l id="s3:l4" met="6" type="-+">Dat stel ick in haer mondt, Dat stel ick in haer <rhyme label="a" type="m" corresp="#s3:l1">mondt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Het sal van haer niet <rhyme label="b" type="f" corresp="#s3:l2">keeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'t Is nu met mijn // Als die dag <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Doe 'k NoÃ« hadd' <rhyme label="b" type="f">gheswooren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat na 't termijn // Des sundt-vloedts <rhyme label="a" type="m" corresp="#s4:l1">pijn</rhyme></l>
        <l id="s4:l4" met="6" type="-+">Niet meer en soude zijn, Niet meer en soude <rhyme label="a" type="m" corresp="#s4:l1">zijn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Op de aerde, als <rhyme label="b" type="f" corresp="#s4:l2">vooren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Alsoo voorwaer // Sal ick hier <rhyme label="a" type="m">naer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Op haer niet meer gram <rhyme label="b" type="f">wesen</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Noch t' eenegaer // Ontnemen <rhyme label="a" type="m" corresp="#s5:l1">haer</rhyme></l>
        <l id="s5:l4" met="6" type="-+">Mijn liefe openbaer, Mijn liefe <rhyme label="a" type="m" corresp="#s5:l1">openbaer</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Noch verwerpen na <rhyme label="b" type="f" corresp="#s5:l2">desen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Als 's Hemels poort // En 't Aerdtrijck <rhyme label="a" type="m">voort</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En al de berghen <rhyme label="b" type="f">beven</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Dan sal mijn woordt, (O mensch <rhyme label="a" type="m" corresp="#s6:l1">aenhoordt</rhyme>,)</l>
        <l id="s6:l4" met="6" type="-+">Noch niet worden verstoord, Noch niet worden <rhyme label="a" type="m" corresp="#s6:l1">verstoord</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Seydt de Heere <rhyme label="b" type="f" corresp="#s6:l2">verheven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ghy sult niet meer // Seyt Godt den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Verlaten vollick <rhyme label="b" type="f">wesen</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Maer hoogh en ne'er // Vol prijs en <rhyme label="a" type="m" corresp="#s7:l1">eer</rhyme>,</l>
        <l id="s7:l4" met="6" type="-+">Een kroon verheven seer, Een kroon verheven <rhyme label="a" type="m" corresp="#s7:l1">seer</rhyme></l>
        <l id="s7:l5" met="3" type="-+">In mijne handt <rhyme label="b" type="f" corresp="#s7:l2">ghepresen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Beloften bly // Oock hebben <rhyme label="a" type="m">wy</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Van Christo ons <rhyme label="b" type="f">ghegheven</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Ick blijf u by // T' aller tijdt <rhyme label="a" type="m" corresp="#s8:l1">vry</rhyme>,</l>
        <l id="s8:l4" met="6" type="-+">Tot dat de eyndinghe zy, Tot dat de eyndinghe <rhyme label="a" type="m" corresp="#s8:l1">zy</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Van de wereldt vol <rhyme label="b" type="f" corresp="#s8:l2">sneven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wie hoort uw' raet // Niet <rhyme label="a" type="m">obsitnaet</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Die hoort de mijn oock <rhyme label="b" type="f">mede</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Wie u versmaedt // Met sinnen <rhyme label="a" type="m" corresp="#s9:l1">quaedt</rhyme>,</l>
        <l id="s9:l4" met="6" type="-+">Versmaedt my metter daedt, Versmaedt my metter <rhyme label="a" type="m" corresp="#s9:l1">daedt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Die u sende ter <rhyme label="b" type="f" corresp="#s9:l2">stede</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De poort verdreydt // Van d' hell' <rhyme label="a" type="m">verbreydt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die sal u niet <rhyme label="b" type="f">verwinnen</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">En Paulus seydt // Met klaer <rhyme label="a" type="m" corresp="#s10:l1">bescheyt</rhyme>,</l>
        <l id="s10:l4" met="6" type="-+">Een pylaer der waerheydt, Een pylaer der <rhyme label="a" type="m" corresp="#s10:l1">waerheydt</rhyme></l>
        <l id="s10:l5" met="3" type="-+">In Godes Kerck, vol <rhyme label="b" type="f" corresp="#s10:l2">minnen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dus schort u yet, Doet haer <rhyme label="a" type="m">bediet</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Seyt Christus noch <rhyme label="b" type="f">voort-aene</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Wie de Kerck niet // Hoordt //  noch <rhyme label="a" type="m" corresp="#s11:l1">ontsiet</rhyme>,</l>
        <l id="s11:l4" met="6" type="-+">Houd hem sonder verdriet, Houd hem sonder <rhyme label="a" type="m" corresp="#s11:l1">verdriet</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Voor Heyd'n en <rhyme label="b" type="f" corresp="#s11:l2">Publicane</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Noch al hier naer // Joannes <rhyme label="a" type="m">klaer</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Jerusalem sagh <rhyme label="b" type="f">dalen</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">De vesten daer // Waren <rhyme label="a" type="m" corresp="#s12:l1">voorwaer</rhyme></l>
        <l id="s12:l4" met="6" type="-+">D' Apostelen eerbaer, D' Apostelen <rhyme label="a" type="m" corresp="#s12:l1">eerbaer</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Och menschen wilt niet <rhyme label="b" type="f" corresp="#s12:l2">dwalen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Tot aller tij' // Blijft Godt haer <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Sy is des Lams <rhyme label="b" type="f">Huysvrouwe</rhyme>.</l>
        <l id="s13:l3" met="4" type="-+">Godts klaerheydt bly // Verlicht haer <rhyme label="a" type="m" corresp="#s13:l1">vry</rhyme>,</l>
        <l id="s13:l4" met="6" type="-+">Geen Son behoevet sy, Geen Son behoevet <rhyme label="a" type="m" corresp="#s13:l1">sy</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Haer licht is 't Lam <rhyme label="b" type="f" corresp="#s13:l2">ghetrouwe</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Als crystallijn // Soo blinckt haer <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Van goudt zijn hare <rhyme label="b" type="f">straten</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">De Koon'ge fijn // Haer voedtsers <rhyme label="a" type="m" corresp="#s14:l1">zijn</rhyme>,</l>
        <l id="s14:l4" met="6" type="-+">Haer licht heeft geen termijn, Haer licht heeft geen <rhyme label="a" type="m" corresp="#s14:l1">termijn</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Godt sal haer niet <rhyme label="b" type="f" corresp="#s14:l2">verlaten</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dus doen haer eer, (Na Godes <rhyme label="a" type="m">leer</rhyme>)</l>
        <l id="s15:l2" met="3" type="-+">De Koninghen met <rhyme label="b" type="f">spoede</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Sy buyghen seer, Ter aerden <rhyme label="a" type="m" corresp="#s15:l1">neer</rhyme>,</l>
        <l id="s15:l4" met="6" type="-+">En kussen, dat is meer, En kussen, dat is <rhyme label="a" type="m" corresp="#s15:l1">meer</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Haer voeten met <rhyme label="b" type="f" corresp="#s15:l2">ootmoede</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">O Kerck eerbaer // O hemelsch' <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Godt heeft u hoogh <rhyme label="b" type="f">verheven</rhyme>.</l>
        <l id="s16:l3" met="4" type="-+">Hy seydt voorwaer // Met woorden <rhyme label="a" type="m" corresp="#s16:l1">klaer</rhyme>:</l>
        <l id="s16:l4" met="6" type="-+">Mijn wille is in haer, Mijn wille is in <rhyme label="a" type="m" corresp="#s16:l1">haer</rhyme></l>
        <l id="s16:l5" met="3" type="-+">S' is in mijn handt <rhyme label="b" type="f" corresp="#s16:l2">gheschreven</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Op d' aerd' ydoon // In 's Hemelsch <rhyme label="a" type="m">throon</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Zijt ghy een <rhyme label="b" type="f">al-ghemeyne</rhyme>:</l>
        <l id="s17:l3" met="4" type="-+">De Engh'len schoon, (Seydt Godes <rhyme label="a" type="m" corresp="#s17:l1">Soon</rhyme>)</l>
        <l id="s17:l4" met="6" type="-+">Die zijn uwe dienstboo'n, Die zijn uwe <rhyme label="a" type="m" corresp="#s17:l1">dienstboo'n</rhyme></l>
        <l id="s17:l5" met="3" type="-+">O Christ'nen groot en <rhyme label="b" type="f" corresp="#s17:l2">kleyne</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Wt liefde goet // Is blijschap <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Al in des Hemelsch <rhyme label="b" type="f">throone</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Als met ootmoet // Een sondaer <rhyme label="a" type="m" corresp="#s18:l1">vroedt</rhyme></l>
        <l id="s18:l4" met="6" type="-+">Recht penintenti' doet, Recht penintenti' <rhyme label="a" type="m" corresp="#s18:l1">doet</rhyme></l>
        <l id="s18:l5" met="3" type="-+">Seydt Christus in <rhyme label="b" type="f" corresp="#s18:l2">persoone</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Dus broeders soet // Met groot <rhyme label="a" type="m">ootmoedt</rhyme></l>
        <l id="s19:l2" met="3" type="-+">Wilt u verstandt <rhyme label="b" type="f">verneeren</rhyme></l>
        <l id="s19:l3" met="4" type="-+">Onder 't behoedt // Met aller <rhyme label="a" type="m" corresp="#s19:l1">spoedt</rhyme>,</l>
        <l id="s19:l4" met="6" type="-+">Van d' Heyl'ge Kercke goet, Van d' Heyl'ge Kercke <rhyme label="a" type="m" corresp="#s19:l1">goet</rhyme></l>
        <l id="s19:l5" met="3" type="-+">Godt sal uw' deughd <rhyme label="b" type="f" corresp="#s19:l2">vermeeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
