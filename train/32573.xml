  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe lanck sal 't winter <rhyme label="a" type="f">blijven</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Sneeuw, Haegel, Vorst, en <rhyme label="b" type="m">Wint</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Mijn handen doen <rhyme label="a" type="f" corresp="#s1:l1">verstyven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">k'En ben niet wel <rhyme label="b" type="m" corresp="#s1:l2">gesint</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met dat geduerigh <rhyme label="c" type="f">lollen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ick branden lest mijn <rhyme label="d" type="m">hem</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Waerom my Peer en <rhyme label="c" type="f" corresp="#s1:l5">Nollen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Uyt lachten met volle <rhyme label="d" type="m" corresp="#s1:l6">stem</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ten sou my soo niet <rhyme label="a" type="f">spyten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Maer 't was den eersten <rhyme label="b" type="m">keer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Nu hoor ick dit <rhyme label="a" type="f" corresp="#s2:l1">verwyten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">k'En lol nu <rhyme label="b" type="m" corresp="#s2:l2">nimmermeer</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Liever laet ick hem <rhyme label="c" type="f">breken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Als dat hy onder <rhyme label="d" type="m">my</rhyme></l>
        <l id="s2:l7" met="3" type="-+">'t Hemdeken sou <rhyme label="c" type="f" corresp="#s2:l5">ontsteken</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Soo sal ick 't hauden <rhyme label="d" type="m" corresp="#s2:l6">vry</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Adieu dan <rhyme label="a" type="f">Lolle-potten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het lollen ben ick <rhyme label="b" type="m">mu</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo salder niemant <rhyme label="a" type="f" corresp="#s3:l1">spotten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hoe wel dat ick met <rhyme label="b" type="m" corresp="#s3:l2">u</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Vermaeck namp <rhyme label="c" type="f">ondertuschen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Den brandt heeft my <rhyme label="d" type="m">geraeckt</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">Wie sal hemvoorts <rhyme label="c" type="f" corresp="#s3:l5">uyt-bluschen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Die MINNE vonck my seer <rhyme label="d" type="m" corresp="#s3:l6">blaeckt</rhyme>.</l>
      </lg>
    </lg>
  </text>
