  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">NOch op schilden noch op <rhyme label="a" type="f">sweerden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Noch op stercke <rhyme label="b" type="m">oorloogh-mans</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Noch op ruyters noch op <rhyme label="a" type="f" corresp="#s1:l1">peerden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Noch op spiesse noch op <rhyme label="b" type="m" corresp="#s1:l2">lans</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Maer op Godt, wiens <rhyme label="c" type="m">mogentheydt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Alle macht van aerdtsche <rhyme label="d" type="f">dingen</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Overstijght, heb ick <rhyme label="c" type="m" corresp="#s1:l5">geleyt</rhyme></l>
        <l id="s1:l8" met="4" type="+-">’tAncker mijnder <rhyme label="d" type="f" corresp="#s1:l6">hopeningen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Heng niet, Heere, dat mijn <rhyme label="a" type="f">hope</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Eeuwelijck onvruchtbaer <rhyme label="b" type="m">zy</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Op dat ick geen schandt en <rhyme label="a" type="f" corresp="#s2:l1">loope</rhyme></l>
        <l id="s2:l4" met="4" type="+-">By mijn trotse <rhyme label="b" type="m" corresp="#s2:l2">we’erparty</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Op dat sy haer niet <rhyme label="c" type="m">verbly</rhyme>’</l>
        <l id="s2:l6" met="4" type="+-">In mijn al-te-dichte <rhyme label="d" type="f">tranen</rhyme></l>
        <l id="s2:l7" met="4" type="+-">En, wanneer ick stadigh <rhyme label="c" type="m" corresp="#s2:l5">ly</rhyme>’</l>
        <l id="s2:l8" met="4" type="+-">Mijn Godsdienst niet lijck een <rhyme label="d" type="f" corresp="#s2:l6">Wanen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Noyt en quammer mensch ter <rhyme label="a" type="f">schanden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Die op u sijn vastheydt <rhyme label="b" type="m">set</rhyme></l>
        <l id="s3:l3" met="4" type="+-">En door uw’ vermogen’ <rhyme label="a" type="f" corresp="#s3:l1">handen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Wenscht en hoopt te zijn <rhyme label="b" type="m" corresp="#s3:l2">geredt</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Doch bedrogen sal hy <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Die, versmader van Godts <rhyme label="d" type="f">zegen</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Sich verstaert aen loosen <rhyme label="c" type="m" corresp="#s3:l5">schijn</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En belacht des vromen <rhyme label="d" type="f" corresp="#s3:l6">wegen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">In de dichte <rhyme label="a" type="f">duysternissen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daer de wer’lt met is <rhyme label="b" type="m">omvaen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Weest een richt-snoer mijns <rhyme label="a" type="f" corresp="#s4:l1">Gewissen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Om uw’ wegen recht te <rhyme label="b" type="m" corresp="#s4:l2">gaen</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Overstrael my met het <rhyme label="c" type="m">licht</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Vwer Goddelijcker <rhyme label="d" type="f">klaerheydt</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Daer ’tverstandt door werd’ <rhyme label="c" type="m" corresp="#s4:l5">gericht</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Op het padt der wisser <rhyme label="d" type="f" corresp="#s4:l6">waerheydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Niemandt, Heer, en is des <rhyme label="a" type="f">machtigh</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dan ghy die my hulpe <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Dien ick, mijns gebrecks <rhyme label="a" type="f" corresp="#s5:l1">gedachtigh</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Neem ten steun van mijn <rhyme label="b" type="m" corresp="#s5:l2">gemoedt</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Vol van rijck’ <rhyme label="c" type="m">erbarmenis</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Waert ghy oyt van <rhyme label="d" type="f">aen-beginne</rhyme>:</l>
        <l id="s5:l7" met="4" type="+-">Gaen wy ergens los off <rhyme label="c" type="m" corresp="#s5:l5">mis</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Laet die we’er ter herten <rhyme label="d" type="f" corresp="#s5:l6">inne</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Heeft misschien mijn <rhyme label="a" type="f">achteloose</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Heeft misschien mijn brossche <rhyme label="b" type="m">jeught</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Sich benadert tot het <rhyme label="a" type="f" corresp="#s6:l1">boose</rhyme></l>
        <l id="s6:l4" met="4" type="+-">En geglist uyt ’tspoor van <rhyme label="b" type="m" corresp="#s6:l2">deuchdt</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Set daer van de <rhyme label="c" type="m">heugenis</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Eeuwelijck in’t hert ter <rhyme label="d" type="f">zijden</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">’tFeylen spreeckt om straff: (’tis <rhyme label="c" type="m" corresp="#s6:l5">wis</rhyme>)</l>
        <l id="s6:l8" met="4" type="+-">Maer uw’ goedtheydt kan’t niet <rhyme label="d" type="f" corresp="#s6:l6">lijden</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Kan’t niet lijden, als de <rhyme label="a" type="f">Mensche</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Sijns voorgangen dolings <rhyme label="b" type="m">wijs</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">In all’ sijn gebedt en <rhyme label="a" type="f" corresp="#s7:l1">wensche</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Sucht na heyligh <rhyme label="b" type="m" corresp="#s7:l2">onderwijs</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Hem te brengen op het <rhyme label="c" type="m">padt</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Staet dan uwe goedtheydt <rhyme label="d" type="f">vaerdigh</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Vwes leerings hoogen <rhyme label="c" type="m" corresp="#s7:l5">schat</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Acht ghy lage zielen <rhyme label="d" type="f" corresp="#s7:l6">waerdigh</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Over-goedigh en <rhyme label="a" type="f">waerachtigh</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Is de Heer, in al sijn <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Aen haer die, sijns Bondts <rhyme label="a" type="f" corresp="#s8:l1">gedachtigh</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Na sijn wet ter Deuchde <rhyme label="b" type="m" corresp="#s8:l2">spoen</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">Trou, in ellendts <rhyme label="c" type="m">afgeweer</rhyme>;</l>
        <l id="s8:l6" met="4" type="+-">Ruym, in rijcken loon te <rhyme label="d" type="f">schaffen</rhyme>;</l>
        <l id="s8:l7" met="4" type="+-">Reed’, in onderwijs en <rhyme label="c" type="m" corresp="#s8:l5">leer</rhyme>;</l>
        <l id="s8:l8" met="4" type="+-">Sacht, in’t mind’ren van de <rhyme label="d" type="f" corresp="#s8:l6">straffen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Godt, gedoogh’ niet dat de <rhyme label="a" type="f">luyster</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Vwer milder <rhyme label="b" type="m">goediche’en</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Immer in ons hert <rhyme label="a" type="f" corresp="#s9:l1">verduyster</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Door te heet ter straff te <rhyme label="b" type="m" corresp="#s9:l2">tre’en</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Na de swaerheydt van <rhyme label="c" type="m">misdaedt</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Moet uw’ handt sich niet <rhyme label="d" type="f">verstrengen</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">En sich na de ruymt van’t <rhyme label="c" type="m" corresp="#s9:l5">quaedt</rhyme></l>
        <l id="s9:l8" met="4" type="+-">Vwe goedtheydt niet <rhyme label="d" type="f" corresp="#s9:l6">be-engen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">O! gewenschten standt der <rhyme label="a" type="f">zielen</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Die, uyt louterheydt van <rhyme label="b" type="m">grondt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Voor d’onsichtb’re Godtheydt <rhyme label="a" type="f" corresp="#s10:l1">knielen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Hou en trou in’t <rhyme label="b" type="m" corresp="#s10:l2">Wet-verbondt</rhyme>:</l>
        <l id="s10:l5" met="4" type="+-">’tZy hoe’t hier op aerden <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Godt en salse niet <rhyme label="d" type="f">begeven</rhyme>;</l>
        <l id="s10:l7" met="4" type="+-">Hy blijft haer geley’ en <rhyme label="c" type="m" corresp="#s10:l5">raedt</rhyme></l>
        <l id="s10:l8" met="4" type="+-">Door den loop van ’tgantsche <rhyme label="d" type="f" corresp="#s10:l6">leven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Ruym, en ongepijnt van <rhyme label="a" type="f">vreesen</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Sal haer sonde-klaer <rhyme label="b" type="m">gemoedt</rhyme></l>
        <l id="s11:l3" met="4" type="+-">In een sachte stilheydt <rhyme label="a" type="f" corresp="#s11:l1">wesen</rhyme></l>
        <l id="s11:l4" met="4" type="+-">By ’tgenot van alle <rhyme label="b" type="m" corresp="#s11:l2">goedt</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Haer geslacht (door mildt <rhyme label="c" type="m">geteel</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Veel in tal) kent geen <rhyme label="d" type="f">versterven</rhyme></l>
        <l id="s11:l7" met="4" type="+-">Van Godts zegen. ’tSaligh <rhyme label="c" type="m" corresp="#s11:l5">deel</rhyme></l>
        <l id="s11:l8" met="4" type="+-">Is en blijft haer eeuwigh <rhyme label="d" type="f" corresp="#s11:l6">erve</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">’tRecht verstandt van heyl’ge <rhyme label="a" type="f">saken</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">(Daer noyt waen-wijs toe en <rhyme label="b" type="m">quam</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Die de buyten-streep moght <rhyme label="a" type="f" corresp="#s12:l1">raken</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Maer ter diept noyt aff en <rhyme label="b" type="m" corresp="#s12:l2">klam</rhyme>)</l>
        <l id="s12:l5" met="4" type="+-">’tGrondt-merch van Godts <rhyme label="c" type="m">Heymenis</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Smaken sy die Godt recht <rhyme label="d" type="f">vreesen</rhyme>:</l>
        <l id="s12:l7" met="4" type="+-">Hy beluchtight haer <rhyme label="c" type="m" corresp="#s12:l5">’tGewiss</rhyme>’</l>
        <l id="s12:l8" met="4" type="+-">Met sijns klaerheydts ware <rhyme label="d" type="f" corresp="#s12:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Stadigh zijn op Godt mijn <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Die mijn voet ontwerren <rhyme label="b" type="m">sal</rhyme></l>
        <l id="s13:l3" met="4" type="+-">(Trots mijns vyandts <rhyme label="a" type="f" corresp="#s13:l1">tegen-poogen</rhyme>)</l>
        <l id="s13:l4" met="4" type="+-">uyt het net van <rhyme label="b" type="m" corresp="#s13:l2">ongeval</rhyme>.</l>
        <l id="s13:l5" met="4" type="+-">Van ellendt omvangen <rhyme label="c" type="m">dicht</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Ga ick droeff en eensaem <rhyme label="d" type="f">dwalen</rhyme>:</l>
        <l id="s13:l7" met="4" type="+-">Laet uw’ Vaderlijck <rhyme label="c" type="m" corresp="#s13:l5">gesicht</rhyme></l>
        <l id="s13:l8" met="4" type="+-">Troostelijck te mywaerts <rhyme label="d" type="f" corresp="#s13:l6">stralen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Groot is mijner zielen <rhyme label="a" type="f">smerte</rhyme>.</l>
        <l id="s14:l2" met="4" type="+-">Help my in soo swaren <rhyme label="b" type="m">strijdt</rhyme>.</l>
        <l id="s14:l3" met="4" type="+-">(Ach! wat lijdt een eenigh <rhyme label="a" type="f" corresp="#s14:l1">herte</rhyme>!)</l>
        <l id="s14:l4" met="4" type="+-">Maeck my ’tpack der sonde <rhyme label="b" type="m" corresp="#s14:l2">quijt</rhyme>.</l>
        <l id="s14:l5" met="4" type="+-">Sie de veelt van die, met <rhyme label="c" type="m">quaedt</rhyme></l>
        <l id="s14:l6" met="4" type="+-">Groff beswangert, my <rhyme label="d" type="f">bestrijen</rhyme>,</l>
        <l id="s14:l7" met="4" type="+-">En uyt in-gevleyschten <rhyme label="c" type="m" corresp="#s14:l5">haet</rhyme></l>
        <l id="s14:l8" met="4" type="+-">My sich maken tot <rhyme label="d" type="f" corresp="#s14:l6">partijen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Ach! verseker my mijn <rhyme label="a" type="f">leven</rhyme>;</l>
        <l id="s15:l2" met="4" type="+-">Koom met stercke hulpe <rhyme label="b" type="m">by</rhyme>;</l>
        <l id="s15:l3" met="4" type="+-">Wil my niet ter schande <rhyme label="a" type="f" corresp="#s15:l1">geven</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Want op u vertouw ick <rhyme label="b" type="m" corresp="#s15:l2">my</rhyme>.</l>
        <l id="s15:l5" met="4" type="+-">Vast te staen in Godts <rhyme label="c" type="m">gena</rhyme>’,</l>
        <l id="s15:l6" met="4" type="+-">Slecht en recht te zijn van <rhyme label="d" type="f">zeden</rhyme>,</l>
        <l id="s15:l7" met="4" type="+-">Is’t daer ick op roem en <rhyme label="c" type="m" corresp="#s15:l5">sta</rhyme></l>
        <l id="s15:l8" met="4" type="+-">Mids in alle <rhyme label="d" type="f" corresp="#s15:l6">tegenheden</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Help uyt allen angst en <rhyme label="a" type="f">nooden</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Help uyt alle leedt en <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s16:l3" met="4" type="+-">’tVolck dat uwes mondts <rhyme label="a" type="f" corresp="#s16:l1">geboden</rhyme></l>
        <l id="s16:l4" met="4" type="+-">Roer en snoer sijns doens laet <rhyme label="b" type="m" corresp="#s16:l2">zijn</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">’tVolck daer ghy uw’ lust in <rhyme label="c" type="m">schept</rhyme>,</l>
        <l id="s16:l6" met="4" type="+-">’tVolck dat ghy u <rhyme label="d" type="f">uytverkoren</rhyme></l>
        <l id="s16:l7" met="4" type="+-">En ten Volck geheylight <rhyme label="c" type="m" corresp="#s16:l5">hebt</rhyme>,</l>
        <l id="s16:l8" met="4" type="+-">’tVolck van Iacob <rhyme label="d" type="f" corresp="#s16:l6">voort-geboren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
