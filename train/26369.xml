  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CHristus zijnde <rhyme label="a" type="f">verresen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Heeft veertich daghen <rhyme label="b" type="m">hy</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Hem levendich <rhyme label="a" type="f" corresp="#s1:l1">bewesen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Den Apostelen <rhyme label="b" type="m" corresp="#s1:l2">vry</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Op eenen bergh te <rhyme label="b" type="m" corresp="#s1:l2">Bethany</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Jerusalem <rhyme label="b" type="m" corresp="#s1:l2">by</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">D'opvaert <rhyme label="b" type="m" corresp="#s1:l2">Christi</rhyme></l>
        <l id="s1:l8" met="5" type="-+">Ten Hemel openbaer daer saghen <rhyme label="b" type="m" corresp="#s1:l2">sy</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Van den bergh der <rhyme label="a" type="f">Olijven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wederghekeert ind' <rhyme label="b" type="m">stadt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maria met de <rhyme label="a" type="f" corresp="#s2:l1">Wijven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Oock by henlieden <rhyme label="b" type="m" corresp="#s2:l2">sat</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Vergaert op eenen solder, <rhyme label="b" type="m" corresp="#s2:l2">dat</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Elck deuchdich <rhyme label="b" type="m" corresp="#s2:l2">vat</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Neerstelijck <rhyme label="b" type="m" corresp="#s2:l2">badt</rhyme>,</l>
        <l id="s2:l8" met="5" type="-+">Om te ontfanghen den beloofden <rhyme label="b" type="m" corresp="#s2:l2">schat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een Apostel <rhyme label="a" type="f">vercoren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hebben sy voor <rhyme label="b" type="m">Judas</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wiens Bisdom was <rhyme label="a" type="f" corresp="#s3:l1">verloren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">T'lot viel op <rhyme label="b" type="m" corresp="#s3:l2">Mathias</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En als nu Pincxster vervult <rhyme label="b" type="m" corresp="#s3:l2">was</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Snellijck en <rhyme label="b" type="m" corresp="#s3:l2">ras</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Een windt <rhyme label="b" type="m" corresp="#s3:l2">gheblas</rhyme></l>
        <l id="s3:l8" met="5" type="-+">Quam uyt den Hemel daer op't selve <rhyme label="b" type="m" corresp="#s3:l2">pas</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">T'huys werdt vervult van <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ghedeelde tonghen <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Quamen vierich <rhyme label="a" type="f" corresp="#s4:l1">gheresen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Op yeghelijcke van <rhyme label="b" type="m" corresp="#s4:l2">haer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Vol des heylighen Gheests <rhyme label="b" type="m" corresp="#s4:l2">eerbaer</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Werdt al die <rhyme label="b" type="m" corresp="#s4:l2">schaer</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Wy lesen, <rhyme label="b" type="m" corresp="#s4:l2">maer</rhyme></l>
        <l id="s4:l8" met="5" type="-+">Ontrent hondert en twintich wasser <rhyme label="b" type="m" corresp="#s4:l2">daer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy predickten en <rhyme label="a" type="f">spraken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met ander tonghen <rhyme label="b" type="m">eest</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En seyden sulcke <rhyme label="a" type="f" corresp="#s5:l1">saken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Als haer in gaf den <rhyme label="b" type="m" corresp="#s5:l2">Gheest</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Veel Joden die Godt hebben <rhyme label="b" type="m" corresp="#s5:l2">ghevreest</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Die quamen <rhyme label="b" type="m" corresp="#s5:l2">meest</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Door dit <rhyme label="b" type="m" corresp="#s5:l2">tempeest</rhyme></l>
        <l id="s5:l8" met="5" type="-+">Om weten van desen den rechten <rhyme label="b" type="m" corresp="#s5:l2">keest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Van onder s'Hemels <rhyme label="a" type="f">wolcken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Woonden op dat <rhyme label="b" type="m">termijn</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Aldaer uyt alle <rhyme label="a" type="f" corresp="#s6:l1">volcken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Elck zijn tael hoorde <rhyme label="b" type="m" corresp="#s6:l2">fijn</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Den eenen sprack uyt vreesens <rhyme label="b" type="m" corresp="#s6:l2">pijn</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Wat wil dat <rhyme label="b" type="m" corresp="#s6:l2">zijn</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">D'ander in <rhyme label="b" type="m" corresp="#s6:l2">schijn</rhyme></l>
        <l id="s6:l8" met="5" type="-+">Van spot seyden, sy zijn vol soeten <rhyme label="b" type="m" corresp="#s6:l2">wijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Petrus hem <rhyme label="a" type="f">excuseerde</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van dronckenschap ter <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat Joel <rhyme label="a" type="f" corresp="#s7:l1">propheteerde</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sprack hy, gheschiet nu <rhyme label="b" type="m" corresp="#s7:l2">bloot</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Jesum van u ghecruyst ter <rhyme label="b" type="m" corresp="#s7:l2">doot</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Dien heeft Godt <rhyme label="b" type="m" corresp="#s7:l2">groot</rhyme></l>
        <l id="s7:l7" met="2" type="-+">Verweckt <rhyme label="b" type="m" corresp="#s7:l2">minioot</rhyme>,</l>
        <l id="s7:l8" met="5" type="-+">Desen op ons den heylighen Gheest <rhyme label="b" type="m" corresp="#s7:l2">goot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Doet boet alle te <rhyme label="a" type="f">same</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En laet u doopen <rhyme label="b" type="m">vroet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">In Jesu Christi <rhyme label="a" type="f" corresp="#s8:l1">Name</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Tot verghevinghe <rhyme label="b" type="m" corresp="#s8:l2">soet</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Van uwe zonden <rhyme label="b" type="m" corresp="#s8:l2">overvloet</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Soo ghy dit <rhyme label="b" type="m" corresp="#s8:l2">doet</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">De gave <rhyme label="b" type="m" corresp="#s8:l2">goet</rhyme></l>
        <l id="s8:l8" met="5" type="-+">Des heyligen Geests ontfangt ghy met <rhyme label="b" type="m" corresp="#s8:l2">spoet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Petrus heeft met zyn <rhyme label="a" type="f">preken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En crachtich goet <rhyme label="b" type="m">vermaen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Haerlieder hert <rhyme label="a" type="f" corresp="#s9:l1">ontsteken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Sy lieten haer <rhyme label="b" type="m" corresp="#s9:l2">beraen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Die zijn woort gheern namen <rhyme label="b" type="m" corresp="#s9:l2">aen</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Hebben daer <rhyme label="b" type="m" corresp="#s9:l2">saen</rhyme></l>
        <l id="s9:l7" met="2" type="-+">Den doop <rhyme label="b" type="m" corresp="#s9:l2">ontfaen</rhyme>,</l>
        <l id="s9:l8" met="5" type="-+">Haer werdter by drie duysent toe <rhyme label="b" type="m" corresp="#s9:l2">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dese loefden den <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Bleven met goet <rhyme label="b" type="m">opset</rhyme></l>
        <l id="s10:l3" met="3" type="-+">In d'Apostelsche <rhyme label="a" type="f" corresp="#s10:l1">leere</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">In die ghemeynschap <rhyme label="b" type="m" corresp="#s10:l2">met</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Brootbrekinghe, nae Christus <rhyme label="b" type="m" corresp="#s10:l2">Wet</rhyme>,</l>
        <l id="s10:l6" met="2" type="-+">End' in't <rhyme label="b" type="m" corresp="#s10:l2">ghebet</rhyme>,</l>
        <l id="s10:l7" met="2" type="-+">En oock quam <rhyme label="b" type="m" corresp="#s10:l2">het</rhyme></l>
        <l id="s10:l8" met="5" type="-+">Een vreese over alle Zielen <rhyme label="b" type="m" corresp="#s10:l2">net</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Haer goet was al ten <rhyme label="a" type="f">besten</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Elcken ter noot <rhyme label="b" type="m">ghemeyn</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">De Heer om te <rhyme label="a" type="f" corresp="#s11:l1">bevesten</rhyme></l>
        <l id="s11:l4" met="3" type="-+">T'Euangely <rhyme label="b" type="m" corresp="#s11:l2">certeyn</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Dede wonder dinghen niet <rhyme label="b" type="m" corresp="#s11:l2">cleyn</rhyme></l>
        <l id="s11:l6" met="2" type="-+">Openbaer <rhyme label="b" type="m" corresp="#s11:l2">pleyn</rhyme>,</l>
        <l id="s11:l7" met="2" type="-+">Gheschien <rhyme label="b" type="m" corresp="#s11:l2">alleyn</rhyme>,</l>
        <l id="s11:l8" met="5" type="-+">Door zijn lieve Apostels handen <rhyme label="b" type="m" corresp="#s11:l2">reyn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">T'gheests vruchten nu in <rhyme label="a" type="f">stede</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">T'onser <rhyme label="b" type="m">opvoedicheyt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Zijn, liefde, vreuchde, <rhyme label="a" type="f" corresp="#s12:l1">vrede</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Ende <rhyme label="b" type="m" corresp="#s12:l2">lanckmoedicheyt</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Vriendelijckheyt, end' <rhyme label="b" type="m" corresp="#s12:l2">goedicheyt</rhyme>,</l>
        <l id="s12:l6" met="2" type="-+">T'gheloofs <rhyme label="b" type="m" corresp="#s12:l2">bescheyt</rhyme>,</l>
        <l id="s12:l7" met="2" type="-+"><rhyme label="b" type="m" corresp="#s12:l2">Sachtmoedicheyt</rhyme>,</l>
        <l id="s12:l8" met="5" type="-+">Maticheyt, tot der Zielen <rhyme label="b" type="m" corresp="#s12:l2">spoedicheyt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Broeders dit zijn de <rhyme label="a" type="f">vruchten</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Daer men den boom aen <rhyme label="b" type="m">kent</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Of daer met soete <rhyme label="a" type="f" corresp="#s13:l1">luchten</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">S'Heeren Gheest is <rhyme label="b" type="m" corresp="#s13:l2">ontrent</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">In den Olijfboom <rhyme label="b" type="m" corresp="#s13:l2">excellent</rhyme>,</l>
        <l id="s13:l6" met="2" type="-+">Gheplant <rhyme label="b" type="m" corresp="#s13:l2">gheent</rhyme>,</l>
        <l id="s13:l7" met="2" type="-+">Blijft <rhyme label="b" type="m" corresp="#s13:l2">ongheschent</rhyme>,</l>
        <l id="s13:l8" met="5" type="-+">Op Christum Zions eenich <rhyme label="b" type="m" corresp="#s13:l2">fundament</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
