<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186899</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody>De Vlaamse meisjes</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt hoor ik voor <rhyme label="a" type="m">geweld</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Wat wil de Brit dog <rhyme label="b" type="f">hebben</rhyme>?</l>
        <l id="s1:l3" met="3" type="+-">Dat ons wetten <rhyme label="a" type="m" corresp="#s1:l1">steld</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En breekt 't heilige <rhyme label="c" type="m">verbond</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Zoo duur en trouw <rhyme label="d" type="f">geswooren</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Door een looze <rhyme label="c" type="m" corresp="#s1:l4">vond</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En neemt ons Scheepen <rhyme label="a" type="m">mee</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ja komt op ooze <rhyme label="b" type="f">stranden</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">En brengtze na zyn <rhyme label="a" type="m" corresp="#s2:l1">ree</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Berooft de Manschap van haer <rhyme label="c" type="m">goed</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Door eerelooze <rhyme label="d" type="f">Kapers</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Bind hun hand en <rhyme label="c" type="m" corresp="#s2:l4">voet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wat hoon ô <rhyme label="a" type="m">Batavier</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Dit moet gy niet <rhyme label="b" type="f">gedoogen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Maer brandende van <rhyme label="a" type="m" corresp="#s3:l1">vier</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die smaet gaen wreeken met <rhyme label="c" type="m">geweld</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Als Tromp en Ruyter <rhyme label="d" type="f">deeden</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">En zo meenig <rhyme label="c" type="m" corresp="#s3:l4">Held</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">ô Roofziek <rhyme label="a" type="m">Engeland</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dan zal u hoogmoed <rhyme label="b" type="f">zinken</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Al schreeuwt gy moord en <rhyme label="a" type="m" corresp="#s4:l1">brand</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als Holland u weer zit in 't <rhyme label="c" type="m">hair</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">'t Is uw neg niet <rhyme label="d" type="f">vergeeten</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Voor ruym hondert <rhyme label="c" type="m" corresp="#s4:l4">Jaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ons oude Leeuw slaept <rhyme label="a" type="m">nog</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Maer gaet hy eens <rhyme label="b" type="f">ontwaken</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Gy moogt wel vreezen <rhyme label="a" type="m" corresp="#s5:l1">Dog</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">Hy zal u met zyn pootjes <rhyme label="c" type="m">zagt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Zodanig <rhyme label="d" type="f">karrezeeren</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Met zyn gantsche <rhyme label="c" type="m" corresp="#s5:l4">magt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ik meen met kruit en <rhyme label="a" type="m">loot</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En dond'ren der <rhyme label="b" type="f">kartouwen</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Van onzen <rhyme label="a" type="m" corresp="#s6:l1">Oorlops-Vloot</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Vour u vervloekt en snood <rhyme label="c" type="m">verraed</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dat gy in 't hart te steeken <rhyme label="d" type="f">zogt</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Van onze <rhyme label="c" type="m" corresp="#s6:l4">Staat</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">U list die is <rhyme label="a" type="m">ontdekt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En strekt u nu tot <rhyme label="b" type="f">schande</rhyme>;</l>
        <l id="s7:l3" met="3" type="+-">Wyl het de haet <rhyme label="a" type="m" corresp="#s7:l1">verwekt</rhyme>!</l>
        <l id="s7:l4" met="4" type="-+">Van yder die een <rhyme label="c" type="m">Ergelschman</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Zyn naem hoord noemen <rhyme label="d" type="f">zyt</rhyme>:</l>
        <l id="s7:l6" met="3" type="+-">Het is een snoo <rhyme label="c" type="m" corresp="#s7:l4">Tiran</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Kom Officieren, <rhyme label="a" type="m">kom</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gaet nu u hooft <rhyme label="b" type="f">vercieren</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">En zend de faem <rhyme label="a" type="m" corresp="#s8:l1">alom</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Dat gy dit hatelyk <rhyme label="c" type="m">gebroet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Wel weder ken <rhyme label="d" type="f">bedwingen</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Door u <rhyme label="c" type="m" corresp="#s8:l4">Heldenmoed</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Voor uwen <rhyme label="a" type="m">Overigheid</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En waerde Heere <rhyme label="b" type="f">Staeten</rhyme>,</l>
        <l id="s9:l3" met="3" type="+-">Die altoos zyn <rhyme label="a" type="m" corresp="#s9:l1">bereid</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Om hun getrouwe <rhyme label="c" type="m">onderdaan</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Met Vaderlyke <rhyme label="d" type="f">zorg</rhyme>,</l>
        <l id="s9:l6" met="3" type="+-">Willig by te <rhyme label="c" type="m" corresp="#s9:l4">staan</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
