  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">INbeelding, bezig <rhyme label="a" type="f">broedsel</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Van 't nimmer stil <rhyme label="b" type="m">gemoed</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gy schaft aen vreugde en droefheid <rhyme label="a" type="f" corresp="#s1:l1">voedsel</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">En maekt ons 't leven zuur, of <rhyme label="b" type="m" corresp="#s1:l2">zoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Nu bout ge, wien 't moog <rhyme label="a" type="f">tergen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Kasteelen in de <rhyme label="b" type="m">lugt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Nu droomt ge zagt van goude <rhyme label="a" type="f" corresp="#s2:l1">bergen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En pragt en weelde en <rhyme label="b" type="m" corresp="#s2:l2">naemsgerugt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dan vaert ge plots naer <rhyme label="a" type="f">onder</rhyme></l>
        <l id="s3:l2" met="3" type="-+">By spokend schim <rhyme label="b" type="m">gewoel</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">En zegt: de Hemel hangt vol <rhyme label="a" type="f" corresp="#s3:l1">donder</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">We staen den blixem hier ten <rhyme label="b" type="m" corresp="#s3:l2">doel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Fluks boort ge uit 's afgronds <rhyme label="a" type="f">kolken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Maan, Zon en Ster <rhyme label="b" type="m">voorby</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dan weer bezoekt ge 's aerdryks <rhyme label="a" type="f" corresp="#s4:l1">volken</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Of maalt het al in <rhyme label="b" type="m" corresp="#s4:l2">schildery</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">'t Regt, zien we door uwe <rhyme label="a" type="f">ogen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Is krom, het krom' is <rhyme label="b" type="m">regt</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">De logen waerheid, waerheid <rhyme label="a" type="f" corresp="#s5:l1">logen</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">De slegte wys, de wyze <rhyme label="b" type="m" corresp="#s5:l2">slegt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Thersyten zyn <rhyme label="a" type="f">Adoonen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Adoon is een <rhyme label="b" type="m">Thersyt</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Reus zal naby een dwerg <rhyme label="a" type="f" corresp="#s6:l1">vertoonen</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Dwerg zal een Reus zyn in 't <rhyme label="b" type="m" corresp="#s6:l2">verschiet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Van menschen maakt gy <rhyme label="a" type="f">wormen</rhyme>;</l>
        <l id="s7:l2" met="3" type="-+">Postloopers, zonder <rhyme label="b" type="m">toom</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Gy giet het al in duizend <rhyme label="a" type="f" corresp="#s7:l1">vormen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En maekt van 't leven maer een <rhyme label="b" type="m" corresp="#s7:l2">droom</rhyme>.</l>
      </lg>
    </lg>
  </text>
