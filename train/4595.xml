  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ONsalig <rhyme label="a" type="m">creatuir</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ellendigste der <rhyme label="b" type="f">menschen</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Hoe’n leesje geen <rhyme label="a" type="m" corresp="#s1:l1">schriftuir</rhyme>//</l>
        <l id="s1:l4" met="3" type="-+">Gelijk de <rhyme label="b" type="f" corresp="#s1:l2">Beroënsen</rhyme>//</l>
        <l id="s1:l5" met="3" type="-+">By Paulus tijd <rhyme label="c" type="f">doorzochten</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Met een ontsteke <rhyme label="d" type="m">drift</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">VVes hen de Leeraers <rhyme label="c" type="f" corresp="#s1:l5">brochten</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Te berde van de <rhyme label="d" type="m" corresp="#s1:l6">schrift</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dits my, o Broeder <rhyme label="a" type="m">fijn</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Nu lang gedaen te <rhyme label="b" type="f">vooren</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Mijn Beroënsen <rhyme label="a" type="m" corresp="#s2:l1">sijn</rhyme></l>
        <l id="s2:l4" met="3" type="-+">De Leeraers en <rhyme label="b" type="f" corresp="#s2:l2">Pastoren</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Der Christelikker <rhyme label="c" type="f">Kerken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die als uit eene <rhyme label="d" type="m">mond</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Vw’ leering end’ uw’ <rhyme label="c" type="f" corresp="#s2:l5">werken</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Verclaren <rhyme label="d" type="m" corresp="#s2:l6">ongezond</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">By namen Petrus <rhyme label="a" type="m">Stoel</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Aen wien, de Christen <rhyme label="b" type="f">Scholen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">In waerheid van <rhyme label="a" type="m" corresp="#s3:l1">gevoel</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Te sterken sijn <rhyme label="b" type="f" corresp="#s3:l2">bevolen</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">En naedemael de <rhyme label="c" type="f">deze</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Mijn Ov’righeiden <rhyme label="d" type="m">sijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Moet hem gehoorzaem <rhyme label="c" type="f" corresp="#s3:l5">wezen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Te recht de ziele <rhyme label="d" type="m" corresp="#s3:l6">mijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En hoe zou <rhyme label="a" type="m">immermeer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">De rede zich <rhyme label="b" type="f">vermeten</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Te durven zonder <rhyme label="a" type="m" corresp="#s4:l1">leer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Uitleggen de <rhyme label="b" type="f" corresp="#s4:l2">Propheten</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Of duiden de <rhyme label="c" type="f">orak’len</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van Godes <rhyme label="d" type="m">Testament</rhyme>?</l>
        <l id="s4:l7" met="3" type="-+">Nu ghy toch geen <rhyme label="c" type="f" corresp="#s4:l5">mirak’len</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Op d’aerde meer en <rhyme label="d" type="m" corresp="#s4:l6">kendt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een Wever moet op’t <rhyme label="a" type="m">tou</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Eerst lang gezeten <rhyme label="b" type="f">hebben</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Eer dat hy durven <rhyme label="a" type="m" corresp="#s5:l1">zou</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Vergaren aen een <rhyme label="b" type="f" corresp="#s5:l2">webbe</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">De Smid moet leeren <rhyme label="c" type="f">smeden</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">De Snyder nae <rhyme label="d" type="m">venant</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Beschaemt, mids deze <rhyme label="c" type="f" corresp="#s5:l5">reden</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Dan vry uw’ plomp <rhyme label="d" type="m" corresp="#s5:l6">verstand</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En zegt met goed <rhyme label="a" type="m">bescheid</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Indien Gods woord zoo claer <rhyme label="b" type="f">is</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">VVeg <rhyme label="a" type="m" corresp="#s6:l1">Universiteit</rhyme></l>
        <l id="s6:l4" met="3" type="-+">VViens onderhoud zoo zwaer <rhyme label="b" type="f" corresp="#s6:l2">is</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">VVaer toe zoo voedtmen <rhyme label="c" type="f">Fraters</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Daert geld ons komt zoo <rhyme label="d" type="m">kort</rhyme>?</l>
        <l id="s6:l7" met="3" type="-+">Waerom vergaertmen <rhyme label="c" type="f" corresp="#s6:l5">Paters</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Int Sijnodus van <rhyme label="d" type="m" corresp="#s6:l6">Dort</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Daer houft geen <rhyme label="a" type="m">Predikant</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dat meer noch is, te <rhyme label="b" type="f">wezen</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Jst saek dat onz <rhyme label="a" type="m" corresp="#s7:l1">verstand</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Genoug is om te <rhyme label="b" type="f" corresp="#s7:l2">lezen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Den Text der <rhyme label="c" type="f">Prophetijen</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">Laet dan tot kruid en <rhyme label="d" type="m">lood</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">De kost voordaen <rhyme label="c" type="f" corresp="#s7:l5">gedijen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Van Preekstoel, en <rhyme label="d" type="m" corresp="#s7:l6">Synood</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Den Bijbel licht toch <rhyme label="a" type="m">als</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Een fakkel onzer <rhyme label="b" type="f">voeten</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Hoe zou dan Duits of <rhyme label="a" type="m" corresp="#s8:l1">Wals</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Noch preken horen <rhyme label="b" type="f" corresp="#s8:l2">moeten</rhyme>?</l>
        <l id="s8:l5" met="3" type="-+">Onzalig <rhyme label="c" type="f">Picardyen</rhyme>!</l>
        <l id="s8:l6" met="3" type="-+">Herroept uw’ bot <rhyme label="d" type="m">gevoel</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Of anders brengj’ in ’t <rhyme label="c" type="f" corresp="#s8:l5">lijen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Vw’ Classis, en uw’ <rhyme label="d" type="m" corresp="#s8:l6">Stoel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Maer neen; dits <rhyme label="a" type="m">ongeraen</rhyme>.</l>
        <l id="s9:l2" met="3" type="-+">Leert uw’ Gemeent dan <rhyme label="b" type="f">zeggen</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Hoe zou’k de Schrift <rhyme label="a" type="m" corresp="#s9:l1">verstaen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Hoor ik ze niet <rhyme label="b" type="f" corresp="#s9:l2">uitleggen</rhyme>?</l>
        <l id="s9:l5" met="3" type="-+">Want dus sprak in zijn <rhyme label="c" type="f">dagen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Met openbaer <rhyme label="d" type="m">bely</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">De Moorman op de <rhyme label="c" type="f" corresp="#s9:l5">wagen</rhyme>;</l>
        <l id="s9:l8" met="3" type="-+">Die beter was als <rhyme label="d" type="m" corresp="#s9:l6">ghy</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Doed wel dan, ziet en <rhyme label="a" type="m">hoord</rhyme>;</l>
        <l id="s10:l2" met="3" type="-+">En kendt uw’ kleine <rhyme label="b" type="f">kennis</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Eer u des Heeren <rhyme label="a" type="m" corresp="#s10:l1">woord</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Te strekken kom tot <rhyme label="b" type="f" corresp="#s10:l2">schennis</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Gelijk als hem <rhyme label="c" type="f">gebeuren</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Nae Petrus zeggen <rhyme label="d" type="m">zou</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Die tegens d’oude <rhyme label="c" type="f" corresp="#s10:l5">keuren</rhyme></l>
        <l id="s10:l8" met="3" type="-+">De Schrift uitleggen <rhyme label="d" type="m" corresp="#s10:l6">wou</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
