  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DIe aensiet Godts <rhyme label="a" type="f">beminden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Soo als de selve <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Na 't vleesch, en na den <rhyme label="c" type="m">Gheest</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die sal terstont <rhyme label="a" type="f" corresp="#s1:l1">bevinden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Klaer als de <rhyme label="b" type="m" corresp="#s1:l2">Sonne-schijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat sy sijn, als men <rhyme label="c" type="m" corresp="#s1:l3">leest</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Dat Israel is <rhyme label="c" type="m" corresp="#s1:l3">gheweest</rhyme>:</l>
        <l id="s1:l8" met="3" type="-+">Saul den eersten <rhyme label="d" type="f">Coningh</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Bestiert door een qua <rhyme label="e" type="m">gheest</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Die is ons een <rhyme label="d" type="f" corresp="#s1:l8">vertooningh</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Van 't sondigh vleesch <rhyme label="e" type="m" corresp="#s1:l9">gheweest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer t'wijl om Sauls <rhyme label="a" type="f">halven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Israel gheplaget <rhyme label="b" type="m">werdt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En staegh verdruckingh <rhyme label="c" type="m">leedt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Soo deed Godt David <rhyme label="a" type="f" corresp="#s2:l1">salven</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">(Een Man na Godes <rhyme label="b" type="m" corresp="#s2:l2">hert</rhyme>)</l>
        <l id="s2:l6" met="3" type="-+">Door dienst van sijn <rhyme label="c" type="m" corresp="#s2:l3">Propheet</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Maer Saul stadigh <rhyme label="c" type="m" corresp="#s2:l3">streedt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Met David, seer <rhyme label="d" type="f">verbolghen</rhyme>:</l>
        <l id="s2:l9" met="3" type="-+">En David vluchte <rhyme label="e" type="m">voor</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Maer Saul in 't <rhyme label="d" type="f" corresp="#s2:l8">vervolgen</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Die volghd al Davids <rhyme label="e" type="m" corresp="#s2:l9">spoor</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dus is 't oock met Godts <rhyme label="a" type="f">kind'ren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">T'wijl 't vleesch na vollen <rhyme label="b" type="m">wensch</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Haer tierannye <rhyme label="c" type="m">speelt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Doet Godt haer macht <rhyme label="a" type="f" corresp="#s3:l1">verhind'ren</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Midts hy den nieuwen <rhyme label="b" type="m" corresp="#s3:l2">Mensch</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Gheschapen na Godts <rhyme label="c" type="m" corresp="#s3:l3">beeldt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Door sijn woordt, in haer <rhyme label="c" type="m" corresp="#s3:l3">teelt</rhyme>.</l>
        <l id="s3:l8" met="3" type="-+">Maer och! de geest moet <rhyme label="d" type="f">lijden</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Dewijl het vleesch, als <rhyme label="e" type="m">vooght</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Door vele wreede <rhyme label="d" type="f" corresp="#s3:l8">strijden</rhyme></l>
        <l id="s3:l11" met="3" type="+-">Haer te vernielen <rhyme label="e" type="m" corresp="#s3:l9">pooght</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer merckt eens op het <rhyme label="a" type="f">ende</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">Want Saul wordt <rhyme label="b" type="m">ont-zielt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En David kreegh de <rhyme label="c" type="m">kroon</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Soo sal 't Godt met ons <rhyme label="a" type="f" corresp="#s4:l1">wenden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Het vleesch sal sijn <rhyme label="b" type="m" corresp="#s4:l2">vernielt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">De geest van smetten <rhyme label="c" type="m" corresp="#s4:l3">schoon</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sal treden op den <rhyme label="c" type="m" corresp="#s4:l3">throon</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En wesen Coningh, <rhyme label="d" type="f">boven</rhyme></l>
        <l id="s4:l9" met="3" type="-+">In 't nieuw' <rhyme label="e" type="m">Jerusalem</rhyme>:</l>
        <l id="s4:l10" met="3" type="-+">En paren, in het <rhyme label="d" type="f" corresp="#s4:l8">loven</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Haer sangh met Davids <rhyme label="e" type="m" corresp="#s4:l9">Stem</rhyme>.</l>
      </lg>
    </lg>
