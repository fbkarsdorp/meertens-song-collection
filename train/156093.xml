    <melody>Il est vrai je le confesse</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs Godts volck haer sueren <rhyme label="a" type="f">wandel</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Na 't Rijck Kan'an <rhyme label="b" type="m">set</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Gaf (tot regel van haer <rhyme label="a" type="f" corresp="#s1:l1">handel</rhyme>)</l>
        <l id="s1:l4" met="3" type="+-">Godt haer dese <rhyme label="b" type="m" corresp="#s1:l2">Wet</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Als ghy in dat Landt sult <rhyme label="c" type="f">komen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Ende hackt in't <rhyme label="d" type="m">Woudt</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Soo velt neer de wilde <rhyme label="c" type="f" corresp="#s1:l5">Boomen</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Spaert het vrughtbaer <rhyme label="d" type="m" corresp="#s1:l6">houdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Soo oock, als Godts toorn aen't <rhyme label="a" type="f">branden</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Om des Wereldts <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">'t Blinckend Wraeck-swaert neemt in <rhyme label="a" type="f" corresp="#s2:l1">handen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Op dat hy haer <rhyme label="b" type="m" corresp="#s2:l2">slaet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Sal Godt nochtans die <rhyme label="c" type="f">verschoonen</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Wiens oprecht <rhyme label="d" type="m">ghemoet</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Voor hem doet de vrughten <rhyme label="c" type="f" corresp="#s2:l5">toonen</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Van 't gheloof, en <rhyme label="d" type="m" corresp="#s2:l6">boet</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maer de boosen, die als <rhyme label="a" type="f">Eycken</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Door de blauwe <rhyme label="b" type="m">lught</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Met de top ten Hemel <rhyme label="a" type="f" corresp="#s3:l1">reycken</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Sonder goede <rhyme label="b" type="m" corresp="#s3:l2">vrught</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Sal hy in sijn gramschap <rhyme label="c" type="f">treffen</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Dat zy storten <rhyme label="d" type="m">neer</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Wegh van Menschen met <rhyme label="c" type="f" corresp="#s3:l5">verheffen</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Maer dient staegh den <rhyme label="d" type="m" corresp="#s3:l6">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
