    </categories>
  <author>Johanna de Gavre</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Soeten Heer ghy zijt <rhyme label="a" type="m">ghebaert</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Van een Maghet jonck <rhyme label="a" type="m" corresp="#s1:l1">bejaert</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Liefste <rhyme label="b" type="f">kinnen</rhyme></l>
        <l id="s1:l4" met="2" type="+-">soetste <rhyme label="b" type="f" corresp="#s1:l3">vrinnen</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Liefste <rhyme label="c" type="m">mijn</rhyme></l>
        <l id="s1:l6" met="4" type="+-">mocht ick maer eens by u <rhyme label="c" type="m" corresp="#s1:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">K’wou wel alder soetste <rhyme label="a" type="m">Lam</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dat ghy noch eens ter wereldt <rhyme label="a" type="m" corresp="#s2:l1">quam</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">Dat ghy wilde <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s2:l4" met="2" type="+-">uyt <rhyme label="b" type="f" corresp="#s2:l3">ghelesen</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Broerken <rhyme label="c" type="m">mijn</rhyme></l>
        <l id="s2:l6" met="4" type="+-">ick sou Maseurken <rhyme label="c" type="m" corresp="#s2:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dat ghy wildt zijn dat soete <rhyme label="a" type="m">wicht</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat t’onsent in de wieghe <rhyme label="a" type="m" corresp="#s3:l1">light</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Ick sou sonder <rhyme label="b" type="f">quelen</rhyme></l>
        <l id="s3:l4" met="2" type="+-">met u soo <rhyme label="b" type="f" corresp="#s3:l3">spelen</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Stil en <rhyme label="c" type="m">alleyn</rhyme></l>
        <l id="s3:l6" met="4" type="+-">tot dat ghy in slaep sout <rhyme label="c" type="m" corresp="#s3:l5">zijn</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Kindeken ick sou in uwen <rhyme label="a" type="m">slaep</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Van u stelen tot mijn groot <rhyme label="a" type="m" corresp="#s4:l1">vermaeck</rhyme>,</l>
        <l id="s4:l3" met="2" type="+-">Menigh <rhyme label="b" type="f">soentien</rhyme></l>
        <l id="s4:l4" met="2" type="+-">van u <rhyme label="b" type="f" corresp="#s4:l3">montien</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Naer mijn <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Tot dat waer mijn wensch <rhyme label="c" type="m" corresp="#s4:l5">gheblust</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als ghy dan gheslaepen had u <rhyme label="a" type="m">meugh</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dan sal ick u gheven eenen <rhyme label="a" type="m" corresp="#s5:l1">teugh</rhyme>,</l>
        <l id="s5:l3" met="2" type="+-">Dan sal ick u <rhyme label="b" type="f">draghen</rhyme>,</l>
        <l id="s5:l4" met="2" type="+-">Sonder <rhyme label="b" type="f" corresp="#s5:l3">vraghen</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Voor u <rhyme label="c" type="m">dorst</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Aen mijn Moeders lieve <rhyme label="c" type="m" corresp="#s5:l5">borst</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Kindtien als ghy wilde spelen <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">En noch niet en kost alleene <rhyme label="a" type="m" corresp="#s6:l1">gaen</rhyme>,</l>
        <l id="s6:l3" met="2" type="+-">Dan sou ick u <rhyme label="b" type="f">leyen</rhyme>,</l>
        <l id="s6:l4" met="2" type="+-">En met u <rhyme label="b" type="f" corresp="#s6:l3">vermeyen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Op de <rhyme label="c" type="m">straet</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Iae dat waer mijn meest <rhyme label="c" type="m" corresp="#s6:l5">vermaeck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Oft ghy waert in hitte oft in <rhyme label="a" type="m">kouw</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Ick sal altijt blijven u <rhyme label="a" type="m" corresp="#s7:l1">ghetrouw</rhyme>,</l>
        <l id="s7:l3" met="2" type="+-">Ick sal voor u <rhyme label="b" type="f">sorghen</rhyme>,</l>
        <l id="s7:l4" met="2" type="+-">Avont ende <rhyme label="b" type="f" corresp="#s7:l3">morghen</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">En <rhyme label="c" type="m">altijdt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Al waert voor een <rhyme label="c" type="m" corresp="#s7:l5">eeuwigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
