    <melody>Ik ben een arme pelgrim hier</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIlt heden Iesu <rhyme label="a" type="m">rijck</rhyme></l>
        <l id="s1:l2" met="3" type="-+">My dees liefde <rhyme label="b" type="f">bewijze</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Dat ick mach <rhyme label="a" type="m" corresp="#s1:l1">geestelijck</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Met u <rhyme label="b" type="f" corresp="#s1:l2">verrijse</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Uyt 't sondigh graf <rhyme label="a" type="m">geheel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wilt Jesu my nu <rhyme label="b" type="f">halen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Laet noyt het minste <rhyme label="a" type="m" corresp="#s2:l1">deel</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Daer weer in <rhyme label="b" type="f" corresp="#s2:l2">dalen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den avondt die komt <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wilt Iesu by mijn <rhyme label="b" type="f">blijven</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Verlichten en <rhyme label="a" type="m" corresp="#s3:l1">versaen</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">En ziel <rhyme label="b" type="f" corresp="#s3:l2">verstijven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Geen sonden van mijn <rhyme label="a" type="m">denckt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Geeft my u trouwe <rhyme label="b" type="f">vrede</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">U honigh-raedt my <rhyme label="a" type="m" corresp="#s4:l1">schenckt</rhyme></l>
        <l id="s4:l4" met="2" type="-+">En soetheydt <rhyme label="b" type="f" corresp="#s4:l2">mede</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Geeft dat mijn <rhyme label="a" type="m">ziele-net</rhyme></l>
        <l id="s5:l2" met="3" type="-+">De deughden al mach <rhyme label="b" type="f">vangen</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Dat 't aerdtsch mijn niet <rhyme label="a" type="m" corresp="#s5:l1">besmet</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Noch helsche <rhyme label="b" type="f" corresp="#s5:l2">Slangen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Al Magdaleens <rhyme label="a" type="m">geluck</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wilt Hovenier <rhyme label="b" type="f">verleenen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Vertroost my in mijn <rhyme label="a" type="m" corresp="#s6:l1">druck</rhyme>;</l>
        <l id="s6:l4" met="2" type="-+">Neemt wegh mijn <rhyme label="b" type="f" corresp="#s6:l2">steenen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">In d'Hemel en op <rhyme label="a" type="m">d'aerdt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">U is de macht <rhyme label="b" type="f">gegeven</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Door u macht mijn <rhyme label="a" type="m" corresp="#s7:l1">bewaert</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Van 't sondigh <rhyme label="b" type="f" corresp="#s7:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Geeft my u Heyl'ge <rhyme label="a" type="m">Geest</rhyme>;</l>
        <l id="s8:l2" met="3" type="-+">Vergeeft alle mijn <rhyme label="b" type="f">sonden</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Als Thomas my <rhyme label="a" type="m" corresp="#s8:l1">geneest</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Door uwe <rhyme label="b" type="f" corresp="#s8:l2">wonden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Geeft Iesu! tot 't <rhyme label="a" type="m">beslot</rhyme>:</l>
        <l id="s9:l2" met="3" type="-+">Dat niet my kan <rhyme label="b" type="f">verleyden</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Van u Mijn Al en <rhyme label="a" type="m" corresp="#s9:l1">Godt</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">En veel min <rhyme label="b" type="f" corresp="#s9:l2">scheyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
