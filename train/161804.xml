    <melody>Polyphemus aan de stranden</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ONse Godt die is oock <rhyme label="a" type="f">seecker</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Eenen <rhyme label="a" type="f" corresp="#s1:l1">wreecker</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En een straffer van het <rhyme label="b" type="m">quaedt</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Wil hy dan in toorn <rhyme label="c" type="f">verbolgen</rhyme></l>
        <l id="s1:l5" met="2" type="+-">My <rhyme label="c" type="f" corresp="#s1:l4">vervolgen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Soo en weet ick gheenen <rhyme label="b" type="m" corresp="#s1:l3">raet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Of ick snelder als de <rhyme label="a" type="f">veugelen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Op de <rhyme label="a" type="f" corresp="#s2:l1">vleugelen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Van de gouden <rhyme label="b" type="m">Dageraet</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Vloogh aen 't eynde van dat <rhyme label="c" type="f">water</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Wiens <rhyme label="c" type="f" corresp="#s2:l4">geklater</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Op de grijse klippen <rhyme label="b" type="m" corresp="#s2:l3">slaet</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Daer soud ick my self <rhyme label="a" type="f">bedriegen</rhyme></l>
        <l id="s3:l2" met="2" type="+-">En in 't <rhyme label="a" type="f" corresp="#s3:l1">vliegen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Van sijn handt sijn vast <rhyme label="b" type="m">bekayt</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Want ter Wereldt niet en <rhyme label="c" type="f">repter</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Daer de <rhyme label="c" type="f" corresp="#s3:l4">Scepter</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Sijnen handt niet over <rhyme label="b" type="m" corresp="#s3:l3">swaeyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Of ick onder de <rhyme label="a" type="f">Zee-golven</rhyme></l>
        <l id="s4:l2" met="2" type="+-">My <rhyme label="a" type="f" corresp="#s4:l1">bedolve</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En in 't bracke wel-sant <rhyme label="b" type="m">kroop</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Om soo in die <rhyme label="c" type="f">Pekel-kuylen</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Hem <rhyme label="c" type="f" corresp="#s4:l4">t'ontschuyelen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">'k Was daer mee al buyten <rhyme label="b" type="m" corresp="#s4:l3">hoop</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Of ick onder in der <rhyme label="a" type="f">Hellen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Socht te <rhyme label="a" type="f" corresp="#s5:l1">stellen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Eenen schuyl-hoeck voor sijn <rhyme label="b" type="m">oogh</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Soud daer noch sijn al-siend <rhyme label="c" type="f">stralen</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Op my <rhyme label="c" type="f" corresp="#s5:l4">dalen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">In dien Pijn-poel, van om <rhyme label="b" type="m" corresp="#s5:l3">hoogh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Of ick mede soude <rhyme label="a" type="f">derren</rhyme></l>
        <l id="s6:l2" met="2" type="+-">By de <rhyme label="a" type="f" corresp="#s6:l1">Sterren</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Klimmen op een gulden <rhyme label="b" type="m">Throon</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">My soud' daer oock 't selve <rhyme label="c" type="f">schorten</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Ick soud' <rhyme label="c" type="f" corresp="#s6:l4">storten</rhyme></l>
        <l id="s6:l6" met="4" type="+-">By den Nicker met der <rhyme label="b" type="m" corresp="#s6:l3">woon</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Of ick in de harde <rhyme label="a" type="f">klippen</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Konde <rhyme label="a" type="f" corresp="#s7:l1">slippen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En haer sijn een <rhyme label="b" type="m">ingewant</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Daer my Son, noch Maen, noch <rhyme label="c" type="f">Winden</rhyme></l>
        <l id="s7:l5" met="2" type="+-">Konde <rhyme label="c" type="f" corresp="#s7:l4">vinden</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Soud my vinden sijne <rhyme label="b" type="m" corresp="#s7:l3">handt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Al het vluchten voor Godts <rhyme label="a" type="f">tooren</rhyme></l>
        <l id="s8:l2" met="2" type="+-">Is <rhyme label="a" type="f" corresp="#s8:l1">verlooren</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Of ick was in 't sterckste <rhyme label="b" type="m">Slot</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Dat oyt was in 't Aerdts <rhyme label="c" type="f">gewemel</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Onder <rhyme label="c" type="f" corresp="#s8:l4">d'Hemel</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Ick was daer noch naeckt voor <rhyme label="b" type="m" corresp="#s8:l3">Godt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Sal ick dan niet anghstigh <rhyme label="a" type="f">beven</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Ende <rhyme label="a" type="f" corresp="#s9:l1">geven</rhyme></l>
        <l id="s9:l3" met="4" type="+-">My de wanhoop tot een <rhyme label="b" type="m">roof</rhyme>?</l>
        <l id="s9:l4" met="4" type="+-">O neen! ick wil noch al <rhyme label="c" type="f">hopen</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">En doen <rhyme label="c" type="f" corresp="#s9:l4">open</rhyme></l>
        <l id="s9:l6" met="4" type="+-">'t Scherp-siend' ooge van 't <rhyme label="b" type="m" corresp="#s9:l3">Geloof</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Schuylende in Christi <rhyme label="a" type="f">wonden</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Daer mijn <rhyme label="a" type="f" corresp="#s10:l1">sonden</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Voor Godts oordeel sijn <rhyme label="b" type="m">bedeckt</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Daer mijn ziel haer naeckte <rhyme label="c" type="f">leden</rhyme></l>
        <l id="s10:l5" met="2" type="+-">Doet <rhyme label="c" type="f" corresp="#s10:l4">bekleeden</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Met sijn deughden <rhyme label="b" type="m" corresp="#s10:l3">onbevleckt</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Laet dan stuyven Aerd' en <rhyme label="a" type="f">Hemel</rhyme></l>
        <l id="s11:l2" met="2" type="+-">Ghelijck <rhyme label="a" type="f" corresp="#s11:l1">Semel</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Sijnde van Godts toorn <rhyme label="b" type="m">vervaert</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Evenwel sal ick daer <rhyme label="c" type="f">wesen</rhyme></l>
        <l id="s11:l5" met="2" type="+-">Sonder <rhyme label="c" type="f" corresp="#s11:l4">vreesen</rhyme></l>
        <l id="s11:l6" met="4" type="+-">En in Jesum wel <rhyme label="b" type="m" corresp="#s11:l3">bewaert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
