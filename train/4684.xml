  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAer toe dit groot <rhyme label="a" type="m">getal</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Priesters, ende <rhyme label="b" type="f">Papen</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">’t Welk met goe re’en, de <rhyme label="a" type="m" corresp="#s1:l1">gal</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Omroerdt van Godes <rhyme label="b" type="f" corresp="#s1:l2">knapen</rhyme>?</l>
        <l id="s1:l5" met="3" type="-+">Want nadien dat <rhyme label="c" type="f">verheven</rhyme></l>
        <l id="s1:l6" met="3" type="-+">d’ Hoog-Priester Iesus <rhyme label="d" type="m">is</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Tot eeuwigheyd van <rhyme label="c" type="f" corresp="#s1:l5">leven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Zoo gaen all’ d’ ander <rhyme label="d" type="m" corresp="#s1:l6">mis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zegt my eens re’en <rhyme label="a" type="m">waerom</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Want dit en doed geen <rhyme label="b" type="f">hinder</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Aen Christus <rhyme label="a" type="m" corresp="#s2:l1">Priesterdom</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Niet meerder, noch niet <rhyme label="b" type="f" corresp="#s2:l2">minder</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Als hind’ren uw’ <rhyme label="c" type="f">Doctoren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Het eenig <rhyme label="d" type="m">leeraers-ampt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Daer Christus toe <rhyme label="c" type="f" corresp="#s2:l5">verkoren</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En eeuwig is <rhyme label="d" type="m" corresp="#s2:l6">gestamt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Doorzoukt met goed <rhyme label="a" type="m">bescheyd</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ghy lezer, ofte <rhyme label="b" type="f">leester</rhyme>!</l>
        <l id="s3:l3" met="3" type="-+">De Schrift daer Christus <rhyme label="a" type="m" corresp="#s3:l1">zeyd</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ik ben uw’ eenig <rhyme label="b" type="f" corresp="#s3:l2">meester</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">End’ evenwel en <rhyme label="c" type="f">meynen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Vw’ Predicanten <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat zy deur hen <rhyme label="c" type="f" corresp="#s3:l5">verkleynen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Den Heiland, zoo men <rhyme label="d" type="m" corresp="#s3:l6">ziet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De reden is, om <rhyme label="a" type="m">dat</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Zy uyten naem des <rhyme label="b" type="f">Heren</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Haer Vollijk, Dorrip, <rhyme label="a" type="m" corresp="#s4:l1">Stad</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Den Bybel staen en <rhyme label="b" type="f" corresp="#s4:l2">leeren</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Als Dienaers, en <rhyme label="c" type="f">Herauten</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Om zijn verzoen te <rhyme label="d" type="m">raen</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Wat zullen  dan voor <rhyme label="c" type="f" corresp="#s4:l5">faulten</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">De Priesters hier <rhyme label="d" type="m" corresp="#s4:l6">begaen</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Heer Iesus blijft <rhyme label="a" type="m">allein</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Tot allen <rhyme label="b" type="f">eeuwigheden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Een Priester nae de <rhyme label="a" type="m" corresp="#s5:l1">trein</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van Melchisedechs <rhyme label="b" type="f" corresp="#s5:l2">zeden</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Daer hem geen <rhyme label="c" type="f">Successeuren</rhyme></l>
        <l id="s5:l6" met="3" type="-+">(Alzoo hy eeuwig <rhyme label="d" type="m">leeft</rhyme>)</l>
        <l id="s5:l7" met="3" type="-+">Maer dienaers in <rhyme label="c" type="f" corresp="#s5:l5">gebeuren</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Deur wyen hy t’off’ren <rhyme label="d" type="m" corresp="#s5:l6">heeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Met re’en heeft t’off’ren, <rhyme label="a" type="m">want</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Daer hy zit inden <rhyme label="b" type="f">Hemel</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En valt geen <rhyme label="a" type="m" corresp="#s6:l1">offerand</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Alzoo daer schijn, noch <rhyme label="b" type="f" corresp="#s6:l2">schemel</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Van ‘t heilig kruys kan <rhyme label="c" type="f">wezen</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Zoo dat hy tot dit <rhyme label="d" type="m">werk</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Te recht heeft <rhyme label="c" type="f" corresp="#s6:l5">uitgelezen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">De Priesters van zijn <rhyme label="d" type="m" corresp="#s6:l6">Kerk</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wy houden ’s Vaders <rhyme label="a" type="m">eed</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die David ons <rhyme label="b" type="f">vermaende</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Al ist u lief of <rhyme label="a" type="m" corresp="#s7:l1">leed</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Deur ’t Priesterdom dan <rhyme label="b" type="f" corresp="#s7:l2">staende</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Maer ghy die deze <rhyme label="c" type="f">oorde</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Al waer ghy kundt, <rhyme label="d" type="m">verjaegt</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Toondt dat ghy nae de <rhyme label="c" type="f" corresp="#s7:l5">woorden</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Des Vaders, niet en <rhyme label="d" type="m" corresp="#s7:l6">vraegt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
