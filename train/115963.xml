    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>O Venus der minne godin</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Reine liefd' uit God <rhyme label="a" type="f">gevlooten</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Gy hebt mijn ziel in u <rhyme label="a" type="f" corresp="#s1:l1">beslooten</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Hoe goed // hoe <rhyme label="b" type="m">zoet</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Zin uwe <rhyme label="c" type="f">kragten</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">In mijn <rhyme label="c" type="f" corresp="#s1:l4">gedagten</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O liefde zoet! O vuur des <rhyme label="a" type="f">Heeren</rhyme>!</l>
        <l id="s2:l2" met="4" type="-+">Als gy in vloeid, wie mag u <rhyme label="a" type="f" corresp="#s2:l1">keeren</rhyme>?</l>
        <l id="s2:l3" met="2" type="-+">Wie mag // den <rhyme label="b" type="m">dag</rhyme></l>
        <l id="s2:l4" met="2" type="-+">In my <rhyme label="c" type="f">beveelen</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Zijn ligt te <rhyme label="c" type="f" corresp="#s2:l4">heelen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Op toond my uw schoone <rhyme label="a" type="f">rijkdommen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die niet en zijn te <rhyme label="a" type="f" corresp="#s3:l1">over-zommen</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Ik weet // 't <rhyme label="b" type="m">zecreet</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Van uwe <rhyme label="c" type="f">minne</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">In mine <rhyme label="c" type="f" corresp="#s3:l4">zinnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als ik gevoel uw groote <rhyme label="a" type="f">deugden</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Mijn hert ontspringt in my van <rhyme label="a" type="f" corresp="#s4:l1">vreugden</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Als Gy // in <rhyme label="b" type="m">my</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Verschijnt van <rhyme label="c" type="f">booven</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Ik moet u <rhyme label="c" type="f" corresp="#s4:l4">looven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Heemelsche zoete <rhyme label="a" type="f">fonteine</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Mijn oogen zien op U <rhyme label="a" type="f" corresp="#s5:l1">alleine</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Niemand // uw <rhyme label="b" type="m">hand</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Kan <rhyme label="c" type="f">weeder-streeven</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Als Gy wild <rhyme label="c" type="f" corresp="#s5:l4">geeven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Als Gy door uw vriendelijk <rhyme label="a" type="f">weezen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Mijn hert en ziele wild <rhyme label="a" type="f" corresp="#s6:l1">geneezen</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">En dijn // <rhyme label="b" type="m">aanschijn</rhyme></l>
        <l id="s6:l4" met="2" type="-+">My wil <rhyme label="c" type="f">verblijden</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Wie zal 't <rhyme label="c" type="f" corresp="#s6:l4">benijden</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wie zal weg neemen mijn <rhyme label="a" type="f">vertrouwen</rhyme>?</l>
        <l id="s7:l2" met="4" type="-+">Ik wil my aan uw liefde <rhyme label="a" type="f" corresp="#s7:l1">houwen</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Gy zijt // <rhyme label="b" type="m">al-tijd</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Tot my <rhyme label="c" type="f">geneegen</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Wie mag 'er <rhyme label="c" type="f" corresp="#s7:l4">teegen</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Klein ende  teer ben ik van <rhyme label="a" type="f">magte</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Maar des te meer zijn uwe <rhyme label="a" type="f" corresp="#s8:l1">kragten</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Hoe min // ik <rhyme label="b" type="m">vin</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Hoe grooter <rhyme label="c" type="f">liefde</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Mijn ziel <rhyme label="c" type="f" corresp="#s8:l4">door-kliefde</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Mensch-liefdig zijt gy t' allen <rhyme label="a" type="f">stonden</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dat heeft mijn ziele wel <rhyme label="a" type="f" corresp="#s9:l1">bevonden</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Als zy // tot <rhyme label="b" type="m">Dy</rhyme></l>
        <l id="s9:l4" met="2" type="-+">Vuurig <rhyme label="c" type="f">gevlooden</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Heeft in haar <rhyme label="c" type="f" corresp="#s9:l4">nooden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Een Moeder mag haar Kind <rhyme label="a" type="f">vergeeten</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Maar uwe liefd' is <rhyme label="a" type="f" corresp="#s10:l1">on-gemeeten</rhyme>:</l>
        <l id="s10:l3" met="2" type="-+">Geen nood // zoo <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Die kan <rhyme label="c" type="f">verwinnen</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">'t Vuur uwer <rhyme label="c" type="f" corresp="#s10:l4">minnen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ben ick verzoend door uwe <rhyme label="a" type="f">wonden</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Als ik uw viand was <rhyme label="a" type="f" corresp="#s11:l1">bevonden</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Veel meer // O <rhyme label="b" type="m">Heer</rhyme>!</l>
        <l id="s11:l4" met="2" type="-+">Zal ik <rhyme label="c" type="f">ontkoomen</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Zijnd' <rhyme label="c" type="f" corresp="#s11:l4">aan-genoomen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">O hoogen troost! O zoet <rhyme label="a" type="f">vermaaken</rhyme>!</l>
        <l id="s12:l2" met="4" type="-+">Gy doet mijn ziel in liefde <rhyme label="a" type="f" corresp="#s12:l1">blaaken</rhyme>,</l>
        <l id="s12:l3" met="2" type="-+">Gy stigt // <rhyme label="b" type="m">verligt</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">En vrijd' mijn <rhyme label="c" type="f">herte</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Van alle <rhyme label="c" type="f" corresp="#s12:l4">smerte</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Had ik U niet tot <rhyme label="a" type="f">medicijne</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Van droefheid zoud mijn ziel <rhyme label="a" type="f" corresp="#s13:l1">verdwijnen</rhyme>,</l>
        <l id="s13:l3" met="2" type="-+">Maar Gy // zijt <rhyme label="b" type="m">my</rhyme></l>
        <l id="s13:l4" met="2" type="-+">Tot troost <rhyme label="c" type="f">gegeven</rhyme>,</l>
        <l id="s13:l5" met="2" type="-+">Hier in dit <rhyme label="c" type="f" corresp="#s13:l4">leeven</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Ik dank U, Heer! van uw <rhyme label="a" type="f">goedheeden</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Gy steld mijn ziel met u in <rhyme label="a" type="f" corresp="#s14:l1">vreeden</rhyme>:</l>
        <l id="s14:l3" met="2" type="-+">Ik dank // ik <rhyme label="b" type="m">dank</rhyme>,</l>
        <l id="s14:l4" met="2" type="-+">Ik dank U <rhyme label="c" type="f">Vaader</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">Mijnen <rhyme label="c" type="f" corresp="#s14:l4">ontlaader</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
