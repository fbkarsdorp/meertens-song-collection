  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">In de oogen ligt ons <rhyme label="a" type="f">wezen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ligt het gansche <rhyme label="b" type="m">menschenhart</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Want men kan daarin steeds <rhyme label="a" type="f" corresp="#s1:l1">lezen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Onze vreugde onze <rhyme label="b" type="m" corresp="#s1:l2">smart</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Blikt een meisje met <rhyme label="c" type="f">verlangen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Naar een man, dien zij graag <rhyme label="d" type="m">heeft</rhyme></l>
        <l id="s1:l7" met="4" type="+-">wenscht zij hem aan 't hart te <rhyme label="c" type="f" corresp="#s1:l5">prangen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Zulk een oog is zeer <rhyme label="d" type="m" corresp="#s1:l6">beleefd</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Mint gij soms een meisje <rhyme label="a" type="f">innig</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Kijk haar dan eens teeder <rhyme label="b" type="m">aan</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">En beschouwt zij dan <rhyme label="a" type="f" corresp="#s2:l1">aanminnig</rhyme></l>
        <l id="s2:l4" met="4" type="+-">U, en glimlacht zeer <rhyme label="b" type="m" corresp="#s2:l2">voldaan</rhyme></l>
        <l id="s2:l5" met="4" type="+-">In 't geheim, zoo zonder <rhyme label="c" type="f">zorgen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Denk dan maar: in 't oog daar <rhyme label="d" type="m">is</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Dan een kleine schelm <rhyme label="c" type="f" corresp="#s2:l5">verborgen</rhyme>;</l>
        <l id="s2:l8" met="4" type="+-">Dit is zeker en <rhyme label="d" type="m" corresp="#s2:l6">gewis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ziet gij soms des jonglings <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die teer naar een meisje <rhyme label="b" type="m">zien</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En hij wil haar tranen <rhyme label="a" type="f" corresp="#s3:l1">drogen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Of haar anders hulpe <rhyme label="b" type="m" corresp="#s3:l2">biên</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Blikt hij dan oprecht en <rhyme label="c" type="f">moedig</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Haar in 't liefdevolle <rhyme label="d" type="m">oog</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Zulk een oog is trouw en <rhyme label="c" type="f" corresp="#s3:l5">goedig</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Dat nog niemand ooit <rhyme label="d" type="m" corresp="#s3:l6">bedroog</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Komt een man uit verre <rhyme label="a" type="f">landen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">In 't geboorteland eens <rhyme label="b" type="m">weer</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dan wenscht hij de dierbre <rhyme label="a" type="f" corresp="#s4:l1">panden</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Te omhelzen, innig <rhyme label="b" type="m" corresp="#s4:l2">teer</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Wordt hij dan besproeid met <rhyme label="c" type="f">tranen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Door wie hem onder 't harte <rhyme label="d" type="m">droeg</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Niemand zal slechts even <rhyme label="c" type="f" corresp="#s4:l5">wanen</rhyme></l>
        <l id="s4:l8" met="4" type="+-">'t Moederoog spreekt: - niet te <rhyme label="d" type="m" corresp="#s4:l6">vroeg</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Blikt het oog eens mat en <rhyme label="a" type="f">droevig</rhyme></l>
        <l id="s5:l2" met="4" type="+-">In een lang vervlogen <rhyme label="b" type="m">tijd</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Toen onstuimig wild en <rhyme label="a" type="f" corresp="#s5:l1">moedig</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Nog het hart sloeg fier en <rhyme label="b" type="m" corresp="#s5:l2">blijd'</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">En staat het nu meest te <rhyme label="c" type="f">staren</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Altijd door van tranen <rhyme label="d" type="m">nat</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">'k Wil ook dit aan u <rhyme label="c" type="f" corresp="#s5:l5">verklaren</rhyme>:</l>
        <l id="s5:l8" met="4" type="+-">Zulk een oog is <rhyme label="d" type="m" corresp="#s5:l6">levenszat</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Laat zoolang gij 't kunt <rhyme label="a" type="f">verdragen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">U toch in de oogen <rhyme label="b" type="m">zien</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Als geen dag u meer zal <rhyme label="a" type="f" corresp="#s6:l1">dagen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Ach, dan kan 't niet meer <rhyme label="b" type="m" corresp="#s6:l2">geschiên</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Komt de laatste nacht <rhyme label="c" type="f">getogen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Is het oog in slaap <rhyme label="d" type="m">gesust</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Dan is al de glans <rhyme label="c" type="f" corresp="#s6:l5">vervlogen</rhyme>.</l>
        <l id="s6:l8" met="4" type="+-">En het gaat in eeuw'ge <rhyme label="d" type="m" corresp="#s6:l6">rust</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'k Zie den ernst thans in uw <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">'k Zie den ernst op uw <rhyme label="b" type="m">gelaat</rhyme></l>
        <l id="s7:l3" met="4" type="+-">En dat kan ik niet <rhyme label="a" type="f" corresp="#s7:l1">gedoogen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Daar wordt niemand meê <rhyme label="b" type="m" corresp="#s7:l2">gebaat</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Om genoegen u te <rhyme label="c" type="f">schenken</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Zong ik u deez' <rhyme label="d" type="m">oogentaal</rhyme>;</l>
        <l id="s7:l7" met="4" type="+-">Wilt daarom toch wel <rhyme label="c" type="f" corresp="#s7:l5">bedenken</rhyme>:</l>
        <l id="s7:l8" met="4" type="+-">'k Luld geen droesheid in deez' <rhyme label="d" type="m" corresp="#s7:l6">zaal</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ook mijn oog, het dwaalt hier <rhyme label="a" type="f">blijde</rhyme></l>
        <l id="s8:l2" met="4" type="+-">En spreekt tot u frank en <rhyme label="b" type="m">vrij</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">'t Wil zoo gaarne vreugd <rhyme label="a" type="f" corresp="#s8:l1">verspreiden</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">'t Toont de ziel geheel van <rhyme label="b" type="m" corresp="#s8:l2">mij</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Het houdt van jool, 't houdt van <rhyme label="c" type="f">mallen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Van vermaak, van pret, van <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Want bij mij, ge weet het <rhyme label="c" type="f" corresp="#s8:l5">allen</rhyme></l>
        <l id="s8:l8" met="4" type="+-">Hebben kijkers zelden <rhyme label="d" type="m" corresp="#s8:l6">rust</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
