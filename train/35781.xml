      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WEst-enders, Enchuysers, volght na u <rhyme label="a" type="m">Patroon</rhyme>;</l>
        <l id="s1:l2" met="4" type="-+">'t Hemelrijck boven al wilt <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van sonden houdt u zielen <rhyme label="a" type="m" corresp="#s1:l1">schoon</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">U lusten dwinght, en quade <rhyme label="b" type="f" corresp="#s1:l2">sinnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoovaerdigheyt haet, ende <rhyme label="a" type="m">schout</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Helpt ende bystaet uwen <rhyme label="b" type="f">Armen</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">'t Roomsch geloof beleeft, ende <rhyme label="a" type="m" corresp="#s2:l1">houdt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">d' Heer over u, dan sal <rhyme label="b" type="f" corresp="#s2:l2">ontfarmen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">West-enders, Enchuysers, viert altijdt sijn <rhyme label="a" type="m">Feest</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En wilt geensins dan oyt <rhyme label="b" type="f">arbeyden</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Godts plaets besoeckt met Lijf en <rhyme label="a" type="m" corresp="#s3:l1">Geest</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Hier van en laet u noyt <rhyme label="b" type="f" corresp="#s3:l2">verleyden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Heylige Gommaer! Waerde <rhyme label="a" type="m">Vrint</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Door u gebedt, wilt ons <rhyme label="b" type="f">verwerven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat ons Godt bequaem ons <rhyme label="a" type="m" corresp="#s4:l1">vindt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Om sijn glory te mogen <rhyme label="b" type="f" corresp="#s4:l2">erven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wy smeecken u Heer met <rhyme label="a" type="m">ootmoedt</rhyme>:</l>
        <l id="s5:l2" met="4" type="-+">Gunt ons in 't eynde van ons <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Te hooren uwen woorde <rhyme label="a" type="m" corresp="#s5:l1">soet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Gommers Hemels vreught, sal 'k u <rhyme label="b" type="f" corresp="#s5:l2">geven</rhyme>.</l>
      </lg>
    </lg>
  </text>
