  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VReeden mensch, kont gy <rhyme label="a" type="f">gedoogen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Dat men Jesus soo <rhyme label="b" type="m">veracht</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Opent eens uw' blinde <rhyme label="a" type="f" corresp="#s1:l1">oogen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Al ist t'midden in den <rhyme label="b" type="m" corresp="#s1:l2">nacht</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Siet syn handen vast met <rhyme label="c" type="f">banden</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Hoe gaet uwen Godt, en <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Voor ons lyden, voor ons <rhyme label="e" type="f">stryden</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Siet hem plat ter aerde <rhyme label="d" type="m" corresp="#s1:l6">neer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Godt, onnoosel, is <rhyme label="a" type="f">gevangen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Om de doodt te <rhyme label="b" type="m">onderstaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wordt getrocken, om te <rhyme label="a" type="f" corresp="#s2:l1">hangen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dat gy soudt de doodt <rhyme label="b" type="m" corresp="#s2:l2">ontgaen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Siet de waerheydt sonder <rhyme label="c" type="f">klaerheydt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Licht verduystert tot uw <rhyme label="d" type="m">baet</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Voor ons sonden Godt <rhyme label="e" type="f">gebonden</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">En men sleypt hem langhs de <rhyme label="d" type="m" corresp="#s2:l6">straet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hoort de Joden boose <rhyme label="a" type="f">raeden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Kruyst hem, kruyst hem, brengt ter <rhyme label="b" type="m">doot</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Heefter niemandt dan <rhyme label="a" type="f" corresp="#s3:l1">genaede</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Met den Heer in desen <rhyme label="b" type="m" corresp="#s3:l2">noodt</rhyme>?</l>
        <l id="s3:l5" met="4" type="+-">Hy wilt draegen al die <rhyme label="c" type="f">slaegen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">En verhart blyft uw <rhyme label="d" type="m">gemoedt</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Slaet uw' herten, spaert de <rhyme label="e" type="f">smerten</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Die gy Jesus lyden <rhyme label="d" type="m" corresp="#s3:l6">doet</rhyme>.</l>
      </lg>
    </lg>
  </text>
