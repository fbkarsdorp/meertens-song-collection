  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">D' Jongers <rhyme label="a" type="m">altemael</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Beladen met veel <rhyme label="b" type="f">sorgen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Saten in een <rhyme label="a" type="m" corresp="#s1:l1">Sael</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om d' Joden vrees <rhyme label="b" type="f" corresp="#s1:l2">verborgen</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">By haer aldus <rhyme label="c" type="m">vergaert</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En vreesselijk <rhyme label="c" type="m" corresp="#s1:l5">vervaert</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hy hem <rhyme label="c" type="m" corresp="#s1:l5">veropenbaert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Staend' in 't mids van <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met sijne vriendlijk <rhyme label="b" type="f">weesen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Vreed' u <rhyme label="a" type="m" corresp="#s2:l1">allegaer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Seydt, en wilt niet <rhyme label="b" type="f" corresp="#s2:l2">vreesen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Al ben ik doodt <rhyme label="c" type="m">geweest</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Noghtans ben ik geen <rhyme label="c" type="m" corresp="#s2:l5">geest</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Gelijk als gy-lie <rhyme label="c" type="m" corresp="#s2:l5">vreest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Komt tast min vry <rhyme label="a" type="m">an</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Een geest heeft vleesch nogh <rhyme label="b" type="f">beenen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En gelooft het <rhyme label="a" type="m" corresp="#s3:l1">dan</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">En wilt togh geensins <rhyme label="b" type="f" corresp="#s3:l2">meenen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat hier schuylt <rhyme label="c" type="m">valsigheyt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ik toon u goet <rhyme label="c" type="m" corresp="#s3:l5">bescheyt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Gelijk ik heb <rhyme label="c" type="m" corresp="#s3:l5">voor-seyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sy nogh looven <rhyme label="a" type="m">niet</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Dus eyst hy van haer <rhyme label="b" type="f">eeten</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Men Visch, Honingh <rhyme label="a" type="m" corresp="#s4:l1">biet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hy heeft daer van <rhyme label="b" type="f" corresp="#s4:l2">gegeeten</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">De brocken geeft hy <rhyme label="c" type="m">haer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En onderreght daer <rhyme label="c" type="m" corresp="#s4:l5">naer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Haer met Schrifturen <rhyme label="c" type="m" corresp="#s4:l5">klaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">En hy heeft <rhyme label="a" type="m">voortaen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Nogh meenigh <rhyme label="b" type="f">openbaringh</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dees, en die <rhyme label="a" type="m" corresp="#s5:l1">gedaen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Tot seekere <rhyme label="b" type="f" corresp="#s5:l2">verklaeringh</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Wel veertigh daegh <rhyme label="c" type="m">voorwaer</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Al spreekende met <rhyme label="c" type="m" corresp="#s5:l5">haer</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Van Goodes Rijke <rhyme label="c" type="m" corresp="#s5:l5">klaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
