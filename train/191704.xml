<song>
  <meta>
    <id>191704</id>
    <date>
      <year-start>1653</year-start>
      <year-end>1653</year-end>
    </date>
    <location>
      <orginal-name>burghoorn</orginal-name>
      <standard-name>Burghoorn</standard-name>
    </location>
    <tags/>
    <melody/>
  <author>Matthijs van der Merwede</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">'K geliick een roos in Sarons <rhyme label="a" type="f">hoven</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Een lely die veel soets <rhyme label="b" type="m">verbergt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">In't dalend' vlak van't groen <rhyme label="b" type="m" corresp="#s1:l2">gebergt</rhyme>;</l>
        <l id="s1:l4" met="4" type="-+">Soo dat de Maegdekens my <rhyme label="a" type="f" corresp="#s1:l1">loven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Geliik een lely inder <rhyme label="a" type="f">hagen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Is ook uyt-muntend miin <rhyme label="b" type="m">Vrindin</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo wel in schoonheyd als in <rhyme label="b" type="m" corresp="#s2:l2">min</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">In't maegde-kransje van ons <rhyme label="a" type="f" corresp="#s2:l1">dagen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gelijk een appel-boom <rhyme label="a" type="f">omringen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Veel wilde struykken in een <rhyme label="b" type="m">wout</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soo is ook, daer miin ziel op <rhyme label="b" type="m" corresp="#s3:l2">bout</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Miin Lief onder de <rhyme label="a" type="f" corresp="#s3:l1">Jongelingen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'kHaek na de schaduw van siin <rhyme label="a" type="f">bla'ren</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Om daer ter sachter rust te <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">'kWil daer miin tenten <rhyme label="b" type="m" corresp="#s4:l2">neder-slaen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Om siine vruchten op te <rhyme label="a" type="f" corresp="#s4:l1">garen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ik ga met hem ter rechter <rhyme label="a" type="f">uren</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Na 'twiin-huys, na den blyden <rhyme label="b" type="m">disch</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daer siin banier miin minne <rhyme label="b" type="m" corresp="#s5:l2">is</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Hy wil geen ander teeken <rhyme label="a" type="f" corresp="#s5:l1">vuren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Kom 'tswymend hertjen <rhyme label="a" type="f">onder-steunen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">'kBen krank van liefde, geef de <rhyme label="b" type="m">Bruyd</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Geef my het smaek liick <rhyme label="b" type="m" corresp="#s6:l2">appel-fruyt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Laet my op disch en flessen <rhyme label="a" type="f" corresp="#s6:l1">leunen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ik wil my leggen in siin <rhyme label="a" type="f">ermen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Miin vlechten op siin linker <rhyme label="b" type="m">hand</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Siin rechter hand, vol vyer en <rhyme label="b" type="m" corresp="#s7:l2">brand</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Koom my dan minneliik <rhyme label="a" type="f" corresp="#s7:l1">om-ermen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">'kBesweer u heusche <rhyme label="a" type="f">speel-vriendinnen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Siet dat gy hem niet wakker <rhyme label="b" type="m">maekt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Hy die miin blakend hertjen <rhyme label="b" type="m" corresp="#s8:l2">raekt</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Met 'tvleyend vyer van <rhyme label="a" type="f" corresp="#s8:l1">weder-minne</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ik hoor siin stem te mywaerts <rhyme label="a" type="f">naken</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Sie daer siin dgy, tot vreugd <rhyme label="b" type="m">gevergt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Springt vast en huppelt op't <rhyme label="b" type="m" corresp="#s9:l2">gebergt</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Om by siin lieve Bruyd te <rhyme label="a" type="f" corresp="#s9:l1">raken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wie ga ik dan miin vriend <rhyme label="a" type="f">geliiken</rhyme>?</l>
        <l id="s10:l2" met="4" type="-+">Een Geytjen, of een welig <rhyme label="b" type="m">Ree</rhyme>?</l>
        <l id="s10:l3" met="4" type="-+">Ik sie hem op de rechte <rhyme label="b" type="m" corresp="#s10:l2">stee</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Achter ons' muer door 'tvenster <rhyme label="a" type="f" corresp="#s10:l1">kiiken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Sie daer, ik hoor miin Herder <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Ik hoor miins Liefkens soet <rhyme label="b" type="m">geluyt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Sta op miin schoone, kom miin <rhyme label="b" type="m" corresp="#s11:l2">Bruyd</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">De droeve wolken ziin <rhyme label="a" type="f" corresp="#s11:l1">geweken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">De winter-tiiden ziin <rhyme label="a" type="f">verloopen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Plas-regens en onstuymig <rhyme label="b" type="m">weer</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Die leggen nu haer stuerheyd <rhyme label="b" type="m" corresp="#s12:l2">neer</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Miin deur staet voor u minne <rhyme label="a" type="f" corresp="#s12:l1">open</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Het bloemken laet siin kuyfken <rhyme label="a" type="f">kiiken</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Het pluym-gediert begint sijn <rhyme label="b" type="m">sang</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Het tortel-duyfken, liefdens <rhyme label="b" type="m" corresp="#s13:l2">bang</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Laet siin gesucht geen keeltjes <rhyme label="a" type="f" corresp="#s13:l1">wiiken</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Den viige-boomschiet jonge <rhyme label="a" type="f">vruchten</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Den wiingard-stok, op Boermans <rhyme label="b" type="m">bee</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Brengt ook siin kleyne druyfkens <rhyme label="b" type="m" corresp="#s14:l2">mee</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Kom, schoone, laet u sorge <rhyme label="a" type="f" corresp="#s14:l1">vluchten</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Kom Duyfken uyt de rotsen <rhyme label="a" type="f">kruypen</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">En thoon my u <rhyme label="b" type="m">gestaltenis</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Geefuwer stemmen <rhyme label="b" type="m" corresp="#s15:l2">heughenis</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Laet ik in uwe min <rhyme label="a" type="f" corresp="#s15:l1">versuypen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Gaet heen, en vangt de wilde <rhyme label="a" type="f">Swiinen</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Vang, Met-gesellen, vang den <rhyme label="b" type="m">Vos</rhyme>;</l>
        <l id="s16:l3" met="4" type="-+">'tSchiint dat ons druyf haer bloem <rhyme label="b" type="m" corresp="#s16:l2">begos</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Miin zieltje sou haer schade <rhyme label="a" type="f" corresp="#s16:l1">quiinen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Miin Lief is miin, en ik ben <rhyme label="a" type="f">siine</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Ik ben de siine, hy is <rhyme label="b" type="m">miin</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Hy sal miin, ik de siine <rhyme label="b" type="m" corresp="#s17:l2">ziin</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Soo lang de siine hem sal <rhyme label="a" type="f" corresp="#s17:l1">miinen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Tot dat dien lichten dagh <rhyme label="a" type="f">genake</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">En al de schaduwen met <rhyme label="b" type="m">een</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Vlieden voor siinen luyster <rhyme label="b" type="m" corresp="#s18:l2">heen</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Wilt u dan tot een Reedjen <rhyme label="a" type="f" corresp="#s18:l1">maken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
