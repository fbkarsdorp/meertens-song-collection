    <tags/>
    <melody>O gij nimf hoog vermaard</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIldy zien ten naesten <rhyme label="a" type="m">by</rhyme></l>
        <l id="s1:l2" met="3" type="-+">’t Oprechte <rhyme label="b" type="m">fondament</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Waerom dat de <rhyme label="a" type="m" corresp="#s1:l1">ketterij</rhyme></l>
        <l id="s1:l4" met="3" type="-+">De vrije wil <rhyme label="b" type="m" corresp="#s1:l2">ontkendt</rhyme>?</l>
        <l id="s1:l5" met="4" type="+-">Ach, de prij// Wil dat <rhyme label="c" type="m">my</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Wt de mond// En uyt het <rhyme label="d" type="m">hart</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Naem en grond// Van de <rhyme label="e" type="m">zond</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Ganschelijk getrokken <rhyme label="d" type="m" corresp="#s1:l6">werd</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Want daer baer <rhyme label="f" type="m">geweld</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Werd van nood <rhyme label="f" type="m" corresp="#s1:l9">gestelt</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Alle zonde <rhyme label="f" type="m" corresp="#s1:l9">smelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Deze dingen gaen <rhyme label="a" type="m">gewis</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Al lochenze <rhyme label="b" type="m">Calvijn</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Want daer wil noch vrydom <rhyme label="a" type="m" corresp="#s2:l1">is</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Kan ook geen zonde <rhyme label="b" type="m" corresp="#s2:l2">sijn</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">’t Blijkt wel aen// ’t scheuren, <rhyme label="c" type="m">slaen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Van een Beer, of van ene <rhyme label="d" type="m">Paerd</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Hoe ’t gediert// baerdt en <rhyme label="e" type="m">tierdt</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">’t Blijft van zonden <rhyme label="d" type="m" corresp="#s2:l6">ombezwaerd</rhyme>.</l>
        <l id="s2:l9" met="3" type="+-">Die noch klein, noch <rhyme label="f" type="m">groot</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">Sijn kan daer de <rhyme label="f" type="m" corresp="#s2:l9">nood</rhyme></l>
        <l id="s2:l11" met="3" type="+-">’t Vrij beraed <rhyme label="f" type="m" corresp="#s2:l9">verstoot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hier deur werd ook <rhyme label="a" type="m">afgeschaft</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De Hel, en d’Helschen <rhyme label="b" type="m">brand</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Die niet dan de zond en <rhyme label="a" type="m" corresp="#s3:l1">straft</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met haer tormenten, <rhyme label="b" type="m" corresp="#s3:l2">want</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Die geen quaed// van mis <rhyme label="c" type="m">daed</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Oit met eigen wil en <rhyme label="d" type="m">dee</rhyme>;</l>
        <l id="s3:l7" met="4" type="+-">Nimmermeer// pijnig <rhyme label="e" type="m">zeer</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Ook als van Tyran en <rhyme label="d" type="m" corresp="#s3:l6">lee</rhyme>.</l>
        <l id="s3:l9" met="3" type="+-">Datmen dan vry <rhyme label="f" type="m">spot</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Nu voord aen met <rhyme label="f" type="m" corresp="#s3:l9">God</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Zonde, Hel, <rhyme label="f" type="m" corresp="#s3:l9">gebod</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Waerom wilje sijn <rhyme label="a" type="m">begaen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Met boos heyd of met <rhyme label="b" type="m">deugd</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Naedemaal ghy <rhyme label="a" type="m" corresp="#s4:l1">wederstaen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">De driften niet en <rhyme label="b" type="m" corresp="#s4:l2">meugt</rhyme>?</l>
        <l id="s4:l5" met="4" type="+-">Al uw’ daed// al uw’ <rhyme label="c" type="m">laet</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Toch gebeurdt zoot wezen <rhyme label="d" type="m">moet</rhyme>.</l>
        <l id="s4:l7" met="4" type="+-">Houdt u stil// g’hebt geen <rhyme label="e" type="m">wil</rhyme>:</l>
        <l id="s4:l8" met="4" type="+-">God ist, die zoo quaed, als <rhyme label="d" type="m" corresp="#s4:l6">goed</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">Uitvoerdt inden <rhyme label="f" type="m">mensch</rhyme>.</l>
        <l id="s4:l10" met="3" type="+-">Leeft dan nae de <rhyme label="f" type="m" corresp="#s4:l9">wensch</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Voordaen van de <rhyme label="f" type="m" corresp="#s4:l9">pens</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ach! daer was noyt <rhyme label="a" type="m">Kettery</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die zoo een Christen <rhyme label="b" type="m">ziel</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Maekte totte boos heyd <rhyme label="a" type="m" corresp="#s5:l1">vry</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En van de deugden <rhyme label="b" type="m" corresp="#s5:l2">iel</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Maer de Schrift// steld de <rhyme label="c" type="m">drift</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Vanden zondaer onder <rhyme label="d" type="m">hem</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Zoo zeer dat// vier noch <rhyme label="e" type="m">nat</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Weelde-lust, noch <rhyme label="d" type="m" corresp="#s5:l6">harte-klem</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">Blijschap, noch <rhyme label="f" type="m">getreur</rhyme></l>
        <l id="s5:l10" met="3" type="+-">Hem de vrije <rhyme label="f" type="m" corresp="#s5:l9">keur</rhyme></l>
        <l id="s5:l11" met="3" type="+-">Stellen kan te <rhyme label="f" type="m" corresp="#s5:l9">leur</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Want zoo lang des menschen <rhyme label="a" type="m">aerd</rhyme></l>
        <l id="s6:l2" met="3" type="-+">In’t wezen werd <rhyme label="b" type="m">gestijft</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ook de vrye wil <rhyme label="a" type="m" corresp="#s6:l1">bewaerd</rhyme></l>
        <l id="s6:l4" met="3" type="-+">End’ in haer wezen <rhyme label="b" type="m" corresp="#s6:l2">blijft</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Maer Martijn// en <rhyme label="c" type="m">Calvijn</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Mette reste niet te <rhyme label="d" type="m">vre’en</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">d’Eelste wensch// vande <rhyme label="e" type="m">mensch</rhyme>//</l>
        <l id="s6:l8" met="4" type="+-">Ook ter aerden mosten <rhyme label="d" type="m" corresp="#s6:l6">tre’en</rhyme>.</l>
        <l id="s6:l9" met="3" type="+-">Maer ghy, lieve <rhyme label="f" type="m">Heer</rhyme>!</l>
        <l id="s6:l10" met="3" type="+-">Wederstaet <rhyme label="f" type="m" corresp="#s6:l9">d’oneer</rhyme></l>
        <l id="s6:l11" met="3" type="+-">Van zoo snoden <rhyme label="f" type="m" corresp="#s6:l9">Leer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
