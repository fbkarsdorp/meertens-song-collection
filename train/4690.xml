  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">INdien den Echten <rhyme label="a" type="f">zegen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Des Chrisdoms werd <rhyme label="b" type="m">bekend</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Voor een waerachtig <rhyme label="b" type="m" corresp="#s1:l2">Sacrament</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Hoe’n laet dan zich <rhyme label="a" type="f" corresp="#s1:l1">bewegen</rhyme>//</l>
        <l id="s1:l5" met="3" type="-+">Al ’t Pausdom niet te <rhyme label="c" type="m">recht</rhyme>//</l>
        <l id="s1:l6" met="4" type="+-">Tot den band van ‘t heylig <rhyme label="c" type="m" corresp="#s1:l5">Echt</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Bistu zoo groten <rhyme label="a" type="f">meister</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Me  vrind, in <rhyme label="b" type="m">Israel</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Als gh’ u gelaet; zoo weet je <rhyme label="b" type="m" corresp="#s2:l2">wel</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat niemand salff of <rhyme label="a" type="f" corresp="#s2:l1">pleister</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hoe dierbaer dat z’ook <rhyme label="c" type="m">scheen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Oit verkoos voor gave <rhyme label="c" type="m" corresp="#s2:l5">le’en</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De huwelijkse <rhyme label="a" type="f">Veter</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Is boven maten <rhyme label="b" type="m">goed</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Tot bet’ring van’t bedurve <rhyme label="b" type="m" corresp="#s3:l2">bloed</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Maer goed, heeft noch een <rhyme label="a" type="f" corresp="#s3:l1">beter</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">En dits de Maegde <rhyme label="c" type="m">stand</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Beste puik van’t <rhyme label="c" type="m" corresp="#s3:l5">Vaderland</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ten fijn geen id’le <rhyme label="a" type="f">reden</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Maer die met eigen <rhyme label="b" type="m">mond</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Den grootsten tolk van Goods <rhyme label="b" type="m" corresp="#s4:l2">verbond</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wel claerlijk heeft <rhyme label="a" type="f" corresp="#s4:l1">beleden</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Als hy de Maegdom <rhyme label="c" type="m">zet</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Verre boven ’t Echte <rhyme label="c" type="m" corresp="#s4:l5">bed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Zoo wie zijn kind te <rhyme label="a" type="f">geven</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Komt aen een man (sprak <rhyme label="b" type="m">hy</rhyme>,)</l>
        <l id="s5:l3" met="4" type="-+">Doed wel, maer die zijn dochter <rhyme label="b" type="m" corresp="#s5:l2">vry</rhyme></l>
        <l id="s5:l4" met="3" type="-+">End’ ongetrout laet <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Doed’ beter. want ’t is <rhyme label="c" type="m">goed</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Niet te raken vleesch of <rhyme label="c" type="m" corresp="#s5:l5">bloed</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doch om de hoge <rhyme label="a" type="f">graden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Van een zoo schonen <rhyme label="b" type="m">deugd</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Heeft God, die onze zwakheyd <rhyme label="b" type="m" corresp="#s6:l2">heugt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">De kuys heyd maer <rhyme label="a" type="f" corresp="#s6:l1">geraden</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Voor die met klouke <rhyme label="c" type="m">moed</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Trachten nae den <rhyme label="c" type="m" corresp="#s6:l5">Rozen-hoed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer aen de kranke <rhyme label="a" type="f">moeden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die, mids de kleinen <rhyme label="b" type="m">zucht</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Onvatbaer sijn van d’eelste <rhyme label="b" type="m" corresp="#s7:l2">tucht</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">Doet hy ’t gebrek <rhyme label="a" type="f" corresp="#s7:l1">vergoeden</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Door gunst eens <rhyme label="c" type="m">Sacraments</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Heilsaem boven alle <rhyme label="c" type="m" corresp="#s7:l5">wensch</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Looft God van zijn <rhyme label="a" type="f">genade</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Maer die ons zoo <rhyme label="b" type="m">beleeft</rhyme></l>
        <l id="s8:l3" met="4" type="-+">De kuis heyd vry gelaten <rhyme label="b" type="m" corresp="#s8:l2">heeft</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Heeft tot zijn reyne <rhyme label="a" type="f" corresp="#s8:l1">raden</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Met een te scharpen <rhyme label="c" type="m">spoor</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Aengeport het <rhyme label="c" type="m" corresp="#s8:l5">Maegde-choor</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Diet vatten kan, die vat <rhyme label="a" type="f">het</rhyme>;</l>
        <l id="s9:l2" met="3" type="-+">Niet dan dit woord <rhyme label="b" type="m">allein</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Heeft duizend millioenen <rhyme label="b" type="m" corresp="#s9:l2">rein</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Al om gemaekt. Dus schat <rhyme label="a" type="f" corresp="#s9:l1">het</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Ghy mede, sydy <rhyme label="c" type="m">vroed</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Boven al het aerdse <rhyme label="c" type="m" corresp="#s9:l5">goed</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
