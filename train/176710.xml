  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Salogh sullen zy <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die arm van gheeste <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want ‘t Hemelrijck <rhyme label="a" type="f" corresp="#s1:l1">ghepresen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Sal haer toe-komen <rhyme label="b" type="m" corresp="#s1:l2">fijn</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Zaligh zijn sy <rhyme label="c" type="f">bevonden</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Die hier Rou-draghen <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Want Godt ter laetster <rhyme label="c" type="f" corresp="#s1:l5">stonden</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Haer weer vertroosten <rhyme label="d" type="m" corresp="#s1:l6">sal</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zaligh sullen sy <rhyme label="a" type="f">goedigh</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Oock wesen, die <rhyme label="b" type="m">ghelijck</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Van herten zijn <rhyme label="a" type="f" corresp="#s2:l1">Sachtmoedigh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Want sy erven ‘t <rhyme label="b" type="m" corresp="#s2:l2">aerdtrijck</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Zaligh zijn sy die <rhyme label="c" type="f">mede</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hongh’ren en dorsten <rhyme label="d" type="m">fijn</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Nae de <rhyme label="c" type="f" corresp="#s2:l5">gherechtighede</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Sy sullen versaet <rhyme label="d" type="m" corresp="#s2:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Zaligh zijn in haer <rhyme label="a" type="f">ganghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De Barmhertighe <rhyme label="b" type="m">klaer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Want sy sullen <rhyme label="a" type="f" corresp="#s3:l1">ontfanghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Barmhertigheyt hier <rhyme label="b" type="m" corresp="#s3:l2">naer</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Zaligh zijn sy vol <rhyme label="c" type="f">trouwen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die Reyn zijn van <rhyme label="d" type="m">ghemoet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Want sy sullen <rhyme label="c" type="f" corresp="#s3:l5">aenschouwen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Gods aen-ghesichte <rhyme label="d" type="m" corresp="#s3:l6">soet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Zaligh zijn neffens <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">De Vreedsame <rhyme label="b" type="m">bequaem</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sy sullen ghenoemt <rhyme label="a" type="f" corresp="#s4:l1">wesen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Gods Kind’ren <rhyme label="b" type="m" corresp="#s4:l2">aen-ghenaem</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Zaligh zijn t’allen <rhyme label="c" type="f">tijden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die om <rhyme label="d" type="m">gherechtigheyt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Smaet, en Vervolgingh <rhyme label="c" type="f" corresp="#s4:l5">lijden</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Gods Rijck is haer <rhyme label="d" type="m" corresp="#s4:l6">bereyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Heer, almachtigh <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Gheeft ons doch sterckt’ en <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat dees deughden te <rhyme label="a" type="f" corresp="#s5:l1">gader</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van ons werden <rhyme label="b" type="m" corresp="#s5:l2">betracht</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">En dat wy vlijtigh <rhyme label="c" type="f">poghen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Daer in te and’len <rhyme label="d" type="m">fijn</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Op dat wy mede <rhyme label="c" type="f" corresp="#s5:l5">moghen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Hier naemaels Zaligh <rhyme label="d" type="m" corresp="#s5:l6">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
