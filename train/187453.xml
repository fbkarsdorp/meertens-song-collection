  <author>Johannes Wilhelmus Bussingh</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ô Godslam, dat, <rhyme label="a" type="f">geduldig</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Den last der zonden <rhyme label="b" type="m">draegt</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">ô Godslam, dat, <rhyme label="a" type="f" corresp="#s1:l1">onschuldig</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Genaê voor 't misdrijf <rhyme label="b" type="m" corresp="#s1:l2">vraegt</rhyme>!</l>
        <l id="s1:l5" met="3" type="-+">'t Geloofs-oog, U <rhyme label="c" type="f">beschouwend</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Volgt U, naer <rhyme label="d" type="m">Golgotha</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">'t Geloof, op U <rhyme label="c" type="f" corresp="#s1:l5">betrouwend</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Zingt blij: <rhyme label="d" type="m" corresp="#s1:l6">Hallelujah</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Aen 't schand'lijk Kruis <rhyme label="a" type="f">genaderd</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Zie 'k 's Vaders toorn <rhyme label="b" type="m">ontgloeid</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Den Raed der Hel <rhyme label="a" type="f" corresp="#s2:l1">vergaderd</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De Helsche Macht <rhyme label="b" type="m" corresp="#s2:l2">ontboeid</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">En zouden, bij die <rhyme label="c" type="f">smarten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Bij al dien smaed, die <rhyme label="d" type="m">pijn</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Ook dan nog onze <rhyme label="c" type="f" corresp="#s2:l5">harten</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Der zonde dienstbaer <rhyme label="d" type="m" corresp="#s2:l6">zijn</rhyme>? -</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Neen, in dien last der <rhyme label="a" type="f">plagen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die angsten van de <rhyme label="b" type="m">Hel</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die we U aen 't Kruis zien <rhyme label="a" type="f" corresp="#s3:l1">dragen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">ô Dierb're <rhyme label="b" type="m" corresp="#s3:l2">Emanuël</rhyme>!</l>
        <l id="s3:l5" met="3" type="-+">In al Uw bloed en <rhyme label="c" type="f">wonden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In al Uw leed en <rhyme label="d" type="m">hoon</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Zien wij, voor onze <rhyme label="c" type="f" corresp="#s3:l5">zonden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">'t Geducht, rechtveerdig <rhyme label="d" type="m" corresp="#s3:l6">loon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ontvloeid een traen onze <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Door 't staren op Uw' <rhyme label="b" type="m">nood</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Wordt onze ziel <rhyme label="a" type="f" corresp="#s4:l1">bewogen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Bij 't peinsen op Uw' <rhyme label="b" type="m" corresp="#s4:l2">dood</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Dat ons Uw Geest <rhyme label="c" type="f">bewerke</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En 't hart, zo ligt <rhyme label="d" type="m">verleid</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">In 't Borg-geloof <rhyme label="c" type="f" corresp="#s4:l5">versterke</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Aen Uw <rhyme label="d" type="m" corresp="#s4:l6">gerechtigheid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dan, in die <rhyme label="a" type="f">oogenblikken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wen ons de kracht <rhyme label="b" type="m">ontbreekt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En, bij de laetste <rhyme label="a" type="f" corresp="#s5:l1">snikken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'t Gebroken oog slechts <rhyme label="b" type="m" corresp="#s5:l2">spreekt</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Dan rollen deze <rhyme label="c" type="f">klanken</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Nog, op den rand van 't <rhyme label="d" type="m">graf</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Daer we U, als Zoenborg, <rhyme label="c" type="f" corresp="#s5:l5">danken</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Van onze lippen <rhyme label="d" type="m" corresp="#s5:l6">af</rhyme>:</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">‘ô Godslam, dat, <rhyme label="a" type="f">gestorven</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Maer weêr verrezen <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Gij hebt ons heil <rhyme label="a" type="f" corresp="#s6:l1">verworven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wij juichen om Uw' <rhyme label="b" type="m" corresp="#s6:l2">strijd</rhyme>. -</l>
        <l id="s6:l5" met="3" type="-+">Triömf! - ô Borg! - wij <rhyme label="c" type="f">staren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Verrukt op <rhyme label="d" type="m">Golgotha</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Daer wij ten Hemel <rhyme label="c" type="f" corresp="#s6:l5">varen</rhyme>. -</l>
        <l id="s6:l8" met="3" type="-+">Triömf! - <rhyme label="d" type="m" corresp="#s6:l6">Hallelujah</rhyme>!’ -</l>
      </lg>
    </lg>
  </text>
