  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SUlt ghy noch langh <rhyme label="a" type="f">versmaeden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Sondigh mensch, mijn <rhyme label="b" type="m">ghebodt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Al mijn wercken en <rhyme label="a" type="f" corresp="#s1:l1">daeden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">'t Schijnt gy noch daer met <rhyme label="b" type="m" corresp="#s1:l2">spot</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">'k Bid u en zijt niet meer soo <rhyme label="b" type="m" corresp="#s1:l2">sot</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Kiest een goedt lodt, Bekeert u <rhyme label="b" type="m" corresp="#s1:l2">tot</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Mijn en aenbidt den Heere uwen <rhyme label="b" type="m" corresp="#s1:l2">Godt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Mijn alder soetsten <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">'k Heb uwe stem <rhyme label="b" type="m">ghehoort</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">'k Wil my tot u <rhyme label="a" type="f" corresp="#s2:l1">bekeeren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">'k Bid u niet en <rhyme label="b" type="m" corresp="#s2:l2">verstoort</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">'k Wil doen naer uw Goddelijck <rhyme label="b" type="m" corresp="#s2:l2">woort</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Alsoo 't behoort, 'k Gaen daer med' <rhyme label="b" type="m" corresp="#s2:l2">voort</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Ach goeden Iesus 'k ben met u <rhyme label="b" type="m" corresp="#s2:l2">d'accoort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sondaer 'k sien aen uw' <rhyme label="a" type="f">wercken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat ghy mijn weth <rhyme label="b" type="m">versmaet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als gy komt in de <rhyme label="a" type="f" corresp="#s3:l1">Kercke</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">G' en volght niet mijnen <rhyme label="b" type="m" corresp="#s3:l2">raet</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">'k Bid u van sonden dogh op <rhyme label="b" type="m" corresp="#s3:l2">staet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Eer 't is te laet, Te Biechten <rhyme label="b" type="m" corresp="#s3:l2">gaet</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Hoe langh sult ghy volherden in uw' <rhyme label="b" type="m" corresp="#s3:l2">quaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O Iesu ick wil <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Naer uwen wille <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">g' Hebt ten besten <rhyme label="a" type="f" corresp="#s4:l1">ghegeven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Vw' Lichaem ende <rhyme label="b" type="m" corresp="#s4:l2">Bloedt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Voor my siet wat de Liefde <rhyme label="b" type="m" corresp="#s4:l2">doet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">'k Val u te voet, Met diep <rhyme label="b" type="m" corresp="#s4:l2">ootmoet</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Ach soeten Iesus weest van my <rhyme label="b" type="m" corresp="#s4:l2">gegroet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Christus Sondaer ghedenckt mijn <rhyme label="a" type="f">Lijden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En al mijn <rhyme label="b" type="m">arbeyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wilt g' eens met my <rhyme label="a" type="f" corresp="#s5:l1">verblijden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Voor in der <rhyme label="b" type="m" corresp="#s5:l2">eeuwigheyt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Om my te dienen zy <rhyme label="b" type="m" corresp="#s5:l2">bereyt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Met neerstigheyt, Weent en <rhyme label="b" type="m" corresp="#s5:l2">beschreyt</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Vw' sonden, en soeckt uw' <rhyme label="b" type="m" corresp="#s5:l2">saligheyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O schoonheyt boven <rhyme label="a" type="f">maeten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ick heb gheweest <rhyme label="b" type="m">versteent</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Iesus komt my ter <rhyme label="a" type="f" corresp="#s6:l1">baeten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">V eens met my <rhyme label="b" type="m" corresp="#s6:l2">vereent</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">'k en heb het noyt soo <rhyme label="b" type="m" corresp="#s6:l2">ghemeent</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dit dient beweent, Dat g'u <rhyme label="b" type="m" corresp="#s6:l2">verkleent</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Mijn arm sondaer noch den tijdt <rhyme label="b" type="m" corresp="#s6:l2">verleent</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Sondaer 'k kom u <rhyme label="a" type="f">vermaenen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">My eens uw' liefde <rhyme label="b" type="m">thoont</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">'k Heb gestort soo veel <rhyme label="a" type="f" corresp="#s7:l1">traenen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Siet dat ghy my <rhyme label="b" type="m" corresp="#s7:l2">beloont</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Wilt ghy hier naermaels zijn <rhyme label="b" type="m" corresp="#s7:l2">ghekroont</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">My Liefde thoont, En <rhyme label="b" type="m" corresp="#s7:l2">verschoont</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">O mensch staet op die noch in sonden <rhyme label="b" type="m" corresp="#s7:l2">woont</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O Iesus goeden <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Toont my uw' soet <rhyme label="b" type="m">aenschijn</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Verlost ons <rhyme label="a" type="f" corresp="#s8:l1">allegader</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Van Satans boos <rhyme label="b" type="m" corresp="#s8:l2">fenijn</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Door al u Lijden, Doodt en <rhyme label="b" type="m" corresp="#s8:l2">pijn</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Ontfermt u mijn, 't Quaet groot en <rhyme label="b" type="m" corresp="#s8:l2">kleyn</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Is my seer leedt wilt my ghenadigh <rhyme label="b" type="m" corresp="#s8:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Sondaer ick staen <rhyme label="a" type="f">verslaghen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">'t Schijnt ghy den wegh wel <rhyme label="b" type="m">weet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Kan ick u niet <rhyme label="a" type="f" corresp="#s9:l1">beweghen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Aensiet mijn purper <rhyme label="b" type="m" corresp="#s9:l2">kleet</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En al de pijne die ick <rhyme label="b" type="m" corresp="#s9:l2">leet</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Mijn bloet en sweet, Mijn koud' en <rhyme label="b" type="m" corresp="#s9:l2">heet</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Sondaer bekeert, en zijt niet soo <rhyme label="b" type="m" corresp="#s9:l2">vreet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Verlost my van den <rhyme label="a" type="f">quaden</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Door al uw' pijne <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Vergeeft, Heer mijn <rhyme label="a" type="f" corresp="#s10:l1">misdaden</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Daerom en bid ick <rhyme label="b" type="m" corresp="#s10:l2">maer</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">'k Maecke van rouw soo groot <rhyme label="b" type="m" corresp="#s10:l2">misbaer</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Iseus mijn Vaer, Vergeeft <rhyme label="b" type="m" corresp="#s10:l2">voorwaer</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Mijn groote en kleine sonden <rhyme label="b" type="m" corresp="#s10:l2">allegaer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Die zijn u al <rhyme label="a" type="f">vergheven</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Behoudens dat ghy <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Weer keert tot een quaet <rhyme label="a" type="f" corresp="#s11:l1">leven</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Daerom wel voor u <rhyme label="b" type="m" corresp="#s11:l2">siet</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Dat ghy voortaen de sonden <rhyme label="b" type="m" corresp="#s11:l2">vliet</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Hoort mijn bediet, Hier in <rhyme label="b" type="m" corresp="#s11:l2">verschiet</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Of anders sult ghy raecken in 't <rhyme label="b" type="m" corresp="#s11:l2">verdriet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">'k Bedanck u goeden <rhyme label="a" type="f">Heer</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">'k Geeft u hier op mijn <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">'k Wil volghen uwe <rhyme label="a" type="f" corresp="#s12:l1">leere</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Altijdt met goedt <rhyme label="b" type="m" corresp="#s12:l2">verstant</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">'k Schenck u mijn Ziel in weerden <rhyme label="b" type="m" corresp="#s12:l2">pant</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Doet my bystant, Keert den <rhyme label="b" type="m" corresp="#s12:l2">vyant</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Van my, tot ick zijn in u <rhyme label="b" type="m" corresp="#s12:l2">Vaderlant</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
