  <author>Philippus van Sorgen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Idel Land weelig en <rhyme label="a" type="f">dertel</rhyme>;</l>
        <l id="s1:l2" met="4" type="+-">Nu helaas, jammerlijk <rhyme label="b" type="m">Land</rhyme>;</l>
        <l id="s1:l3" met="6" type="+-">Dat zoo zuur uw wulsch en lichtveerdig <rhyme label="a" type="f" corresp="#s1:l1">gespertel</rhyme>;</l>
        <l id="s1:l4" met="6" type="+-">‘t Hans beklaagt: mits Godes hard geess’lende <rhyme label="b" type="m" corresp="#s1:l2">hand</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ach hoe vaak heeft u den <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Door zijn Knechts ‘t oordeel <rhyme label="b" type="m">gedreigt</rhyme>,</l>
        <l id="s2:l3" met="6" type="+-">Zoo gy u niet woud van uw zonden <rhyme label="a" type="f" corresp="#s2:l1">bekeeren</rhyme>;</l>
        <l id="s2:l4" met="6" type="+-">Maar gy hebt daar d’ooren nog ‘t hert toe <rhyme label="b" type="m" corresp="#s2:l2">geneigt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wulpsche Ieuchd, die in uw <rhyme label="a" type="f">zeden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">In gelaat, in uw <rhyme label="b" type="m">gebaard</rhyme>’,</l>
        <l id="s3:l3" met="6" type="+-">In uw dracht, en in uwe Modense <rhyme label="a" type="f" corresp="#s3:l1">kleden</rhyme>,</l>
        <l id="s3:l4" met="6" type="+-">Anders niet toont als een lichtveerdigen <rhyme label="b" type="m" corresp="#s3:l2">aart</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Inde plaats van Gods <rhyme label="a" type="f">Geboden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En zijn Will’ u <rhyme label="b" type="m">voorgestelt</rhyme>,</l>
        <l id="s4:l3" met="6" type="+-">Was het richtsnoer van uw doen de Fransche <rhyme label="a" type="f" corresp="#s4:l1">Moden</rhyme>,</l>
        <l id="s4:l4" met="6" type="+-">Daar gy aan besteed hebt uw tijd en uw <rhyme label="b" type="m" corresp="#s4:l2">geld</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Kom voldoe uwe <rhyme label="a" type="f">begeerten</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Nu de Heer heden u <rhyme label="b" type="m">zend</rhyme></l>
        <l id="s5:l3" met="6" type="+-">Benden van Franschen t’huis met hunn’ <rhyme label="a" type="f" corresp="#s5:l1">geveerten</rhyme>,</l>
        <l id="s5:l4" met="6" type="+-">Met een sleep van jammer, verdriet en <rhyme label="b" type="m" corresp="#s5:l2">elend</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Kom en leer, Franschen <rhyme label="a" type="f">gezinden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Zoo ‘t u lust Fransch zijn <rhyme label="b" type="m">althans</rhyme>;</l>
        <l id="s6:l3" met="6" type="+-">Leer het een’ quaad vry aan het andere <rhyme label="a" type="f" corresp="#s6:l1">binden</rhyme>;</l>
        <l id="s6:l4" met="6" type="+-">Leer haar zang, haar gang en haar dertel <rhyme label="b" type="m" corresp="#s6:l2">gedans</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Want zy zijn huiden <rhyme label="a" type="f">gekommen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Met een Heir machtig en <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s7:l3" met="6" type="+-">Op u aan, met Schepen, Musquetten en <rhyme label="a" type="f" corresp="#s7:l1">Bommen</rhyme>,</l>
        <l id="s7:l4" met="6" type="+-">Met Geschut; met Karren vol kruit en vol <rhyme label="b" type="m" corresp="#s7:l2">loot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Doch niet om u hier te <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Vrankrijks Nieuw-moden en <rhyme label="b" type="m">snof</rhyme>;</l>
        <l id="s8:l3" met="6" type="+-">Maar om u dat nieuw, op zijn Fransch af et <rhyme label="a" type="f" corresp="#s8:l1">leeren</rhyme>,</l>
        <l id="s8:l4" met="6" type="+-">En te doen gevoelen de strengheid van ‘t <rhyme label="b" type="m" corresp="#s8:l2">Hof</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Merk en let hoe zy het <rhyme label="a" type="f">maken</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Zoo op ‘t Land als in de <rhyme label="b" type="m">Ste’en</rhyme>;</l>
        <l id="s9:l3" met="6" type="+-">Hoe zy ‘t al weg plond’ren verbranden en <rhyme label="a" type="f" corresp="#s9:l1">blaken</rhyme>,</l>
        <l id="s9:l4" met="6" type="+-">En ‘t bederf na slepen waar heenen zy <rhyme label="b" type="m" corresp="#s9:l2">tre’en</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Dit’s haar doen; dit’s nu de <rhyme label="a" type="f">Moden</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Zacht geboeid, brooddronken <rhyme label="b" type="m">Land</rhyme>.</l>
        <l id="s10:l3" met="6" type="+-">Land verderven, Luiden beroven en <rhyme label="a" type="f" corresp="#s10:l1">dooden</rhyme>,</l>
        <l id="s10:l4" met="6" type="+-">Vrouwen schenden, Maagden onteeren, ô <rhyme label="b" type="m" corresp="#s10:l2">schand</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Van Gods Naam lasterlijk <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Speelend’ met Teerling en <rhyme label="b" type="m">Kaart</rhyme>;</l>
        <l id="s11:l3" met="6" type="+-">Na zijn eer met bittere woorden te <rhyme label="a" type="f" corresp="#s11:l1">steken</rhyme>,</l>
        <l id="s11:l4" met="6" type="+-">Hem verloch’nen in ‘t minst dat hen <rhyme label="b" type="m" corresp="#s11:l2">wedervaart</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Waren mijn oogen nu <rhyme label="a" type="f">Kranen</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">En mijn Hoofd een <rhyme label="b" type="m">water-wolck</rhyme>,</l>
        <l id="s12:l3" met="6" type="+-">‘k Zou van dag en nachten met bittere <rhyme label="a" type="f" corresp="#s12:l1">tranen</rhyme>,</l>
        <l id="s12:l4" met="6" type="+-">Uw verderf beschreyen, ô weelderigh <rhyme label="b" type="m" corresp="#s12:l2">volk</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
