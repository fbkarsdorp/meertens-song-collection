  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">In den Hemel, in den <rhyme label="a" type="f">Hemel</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Is het goed en zoet te <rhyme label="b" type="m">zijn</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">'t Allerfijnste <rhyme label="b" type="m" corresp="#s1:l2">maagdelijn</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Tapt er mijnen nap vol <rhyme label="b" type="m" corresp="#s1:l2">wijn</rhyme> -</l>
        <l id="s1:l5" met="4" type="+-">Tapt er mijnen nap vol <rhyme label="b" type="m" corresp="#s1:l2">wijn</rhyme>...</l>
        <l id="s1:l6" met="4" type="+-">In den Hemel, in den <rhyme label="a" type="f" corresp="#s1:l1">Hemel</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Woont de liefste <rhyme label="b" type="m" corresp="#s1:l2">mijn</rhyme>!</l>
        <l id="s1:l8" met="3" type="+-">Woont de liefste <rhyme label="b" type="m" corresp="#s1:l2">mijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">In den Hemel, in den <rhyme label="a" type="f">Hemel</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Drink en zing ik <rhyme label="b" type="m">fallala</rhyme>!</l>
        <l id="s2:l3" met="4" type="+-">Loer ik, waar ze ga of <rhyme label="b" type="m" corresp="#s2:l2">sta</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dol verliefd de schoone <rhyme label="b" type="m" corresp="#s2:l2">na</rhyme>...</l>
        <l id="s2:l5" met="4" type="+-">Dol verliefd de schoone <rhyme label="b" type="m" corresp="#s2:l2">na</rhyme>...</l>
        <l id="s2:l6" met="4" type="+-">In den Hemel, in den <rhyme label="a" type="f" corresp="#s2:l1">Hemel</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Ben ik vroeg en <rhyme label="b" type="m" corresp="#s2:l2">spâ</rhyme>!</l>
        <l id="s2:l8" met="3" type="+-">Ben ik vroeg en <rhyme label="b" type="m" corresp="#s2:l2">spâ</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In den Hemel, in den <rhyme label="a" type="f">Hemel</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Past zij - engel - <rhyme label="b" type="m">wondergoed</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Haar gezicht is melk en <rhyme label="b" type="m" corresp="#s3:l2">bloed</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Wie haar ziet, die schiet in <rhyme label="b" type="m" corresp="#s3:l2">gloed</rhyme>...</l>
        <l id="s3:l5" met="4" type="+-">Wie haar ziet, die schiet in <rhyme label="b" type="m" corresp="#s3:l2">gloed</rhyme>...</l>
        <l id="s3:l6" met="4" type="+-">In den Hemel, in den <rhyme label="a" type="f" corresp="#s3:l1">Hemel</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Drink ik <rhyme label="b" type="m" corresp="#s3:l2">levensmoed</rhyme>!</l>
        <l id="s3:l8" met="3" type="+-">Drink ik <rhyme label="b" type="m" corresp="#s3:l2">levensmoed</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">In den Hemel, in den <rhyme label="a" type="f">Hemel</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Doet ze mij zoo zalig <rhyme label="b" type="m">zijn</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Reikt me fijn het <rhyme label="b" type="m" corresp="#s4:l2">bekerlijn</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Vol van wellust, vol van <rhyme label="b" type="m" corresp="#s4:l2">wijn</rhyme>...</l>
        <l id="s4:l5" met="4" type="+-">Vol van wellust, vol van <rhyme label="b" type="m" corresp="#s4:l2">wijn</rhyme>...</l>
        <l id="s4:l6" met="4" type="+-">Ach! ten hemel maakt den <rhyme label="a" type="f" corresp="#s4:l1">Hemel</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Mij de liefste <rhyme label="b" type="m" corresp="#s4:l2">mijn</rhyme>!</l>
        <l id="s4:l8" met="3" type="+-">Mij de liefste <rhyme label="b" type="m" corresp="#s4:l2">mijn</rhyme>!</l>
      </lg>
    </lg>
  </text>
