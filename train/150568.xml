  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">NV is de Heer aen’t <rhyme label="a" type="m">Rijck</rhyme>:</l>
        <l id="s1:l2" met="3" type="-+">Dies toonen <rhyme label="a" type="m" corresp="#s1:l1">vreuchde-blijck</rhyme></l>
        <l id="s1:l3" met="3" type="-+">En losen alle <rhyme label="b" type="f">truren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">De wercken der <rhyme label="b" type="f" corresp="#s1:l3">naturen</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">De aerde zy <rhyme label="c" type="m">verheught</rhyme></l>
        <l id="s1:l6" met="3" type="-+">’tOm-zeedde landt heb <rhyme label="c" type="m" corresp="#s1:l5">vreuchdt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">In Godes <rhyme label="d" type="m">heerlijckheydt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Die sich soo klaer <rhyme label="d" type="m" corresp="#s1:l7">verspreydt</rhyme></l>
        <l id="s1:l9" met="3" type="-+">In vele macht en <rhyme label="c" type="m" corresp="#s1:l5">deuchdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Der wolcken <rhyme label="a" type="m">duysternis</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die om hem henen <rhyme label="a" type="m" corresp="#s2:l1">is</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Kan allen dieder <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Sijns Godtheydts in-druck <rhyme label="b" type="f" corresp="#s2:l3">geven</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">’tOnwanckelijcke <rhyme label="c" type="m">recht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Op waerheydts grondt <rhyme label="c" type="m" corresp="#s2:l5">geleght</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Is sijnen <rhyme label="d" type="m">richter-throon</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En goddelijcke <rhyme label="d" type="m" corresp="#s2:l7">Kroon</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Onscheyd’lijck <rhyme label="c" type="m" corresp="#s2:l5">aen-gehecht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De <rhyme label="a" type="m">tegenwoordicheydt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van sijne <rhyme label="a" type="m" corresp="#s3:l1">majesteyt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met helder licht <rhyme label="b" type="f">om-schenen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Sendt vuyr en vlam voor <rhyme label="b" type="f" corresp="#s3:l3">henen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Waer van de snelle <rhyme label="c" type="m">brandt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Een yeder sijn <rhyme label="c" type="m" corresp="#s3:l5">vyandt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">(Al waer sijn kracht haer <rhyme label="d" type="m">wendt</rhyme>)</l>
        <l id="s3:l8" met="3" type="-+">In haest verteert en <rhyme label="d" type="m" corresp="#s3:l7">sendt</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Een weseloosen <rhyme label="c" type="m" corresp="#s3:l5">standt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Met schittrigh <rhyme label="a" type="m">blixem-licht</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Verrast hy ’taerdtsch <rhyme label="a" type="m" corresp="#s4:l1">gesicht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En in sijn’s glans <rhyme label="b" type="f">uyt-breken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Is heel de lucht <rhyme label="b" type="f" corresp="#s4:l3">ontsteken</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">D’Aerd’ siet het aen, en <rhyme label="c" type="m">beeft</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">’tGeberght, door schrick dien’t <rhyme label="c" type="m" corresp="#s4:l5">heeft</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Versmelt als wasch, voor <rhyme label="d" type="m">hem</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Wiens scepter kracht en <rhyme label="d" type="m" corresp="#s4:l7">klem</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Op all’ heeft watter <rhyme label="c" type="m" corresp="#s4:l5">leeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">D’onsterffelijcke <rhyme label="a" type="m">mondt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Der Hemelen <rhyme label="a" type="m" corresp="#s5:l1">verkondt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">En spreeckt met stomme <rhyme label="b" type="f">reden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Haers Godts <rhyme label="b" type="f" corresp="#s5:l3">Gerechticheden</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Sijn Godtheydt (wijdt <rhyme label="c" type="m">verbreydt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En glory-rijck <rhyme label="c" type="m" corresp="#s5:l5">verspreydt</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Door wonderheydts <rhyme label="d" type="m">vertoogh</rhyme>)</l>
        <l id="s5:l8" met="3" type="-+">Blijckt aller menschen <rhyme label="d" type="m" corresp="#s5:l7">oogh</rhyme>’</l>
        <l id="s5:l9" met="3" type="-+">In haer <rhyme label="c" type="m" corresp="#s5:l5">onsienlijckheydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dies moeten schaem-roodt <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">All’ die ten Afgodt <rhyme label="a" type="m" corresp="#s6:l1">gaen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">En storten hare <rhyme label="b" type="f">beden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Voor hout door konst <rhyme label="b" type="f" corresp="#s6:l3">gesneden</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Wier hert (soo ver <rhyme label="c" type="m">verleydt</rhyme>)</l>
        <l id="s6:l6" met="3" type="-+">In’t dwase <rhyme label="c" type="m" corresp="#s6:l5">onbescheydt</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Van sijn <rhyme label="d" type="m">Godtsdienstiche’en</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Op yd’len schijn van <rhyme label="d" type="m" corresp="#s6:l7">re’en</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Sich selven roemt en <rhyme label="c" type="m" corresp="#s6:l5">vleyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Heeft dan de werelt <rhyme label="a" type="m">yet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Waer in men Godtheydt <rhyme label="a" type="m" corresp="#s7:l1">siet</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Off dat, na Gods <rhyme label="b" type="f">behagen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Den naem van Godt magh <rhyme label="b" type="f" corresp="#s7:l3">dragen</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">’tOntdenck’ sich sijner <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En buygh’ eerbiedlijck <rhyme label="c" type="m" corresp="#s7:l5">ne’er</rhyme></l>
        <l id="s7:l7" met="3" type="-+">(Getreft met heyl’gen <rhyme label="d" type="m">schrick</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Door waerheydts klaren <rhyme label="d" type="m" corresp="#s7:l7">blick</rhyme>)</l>
        <l id="s7:l9" met="3" type="-+">Voor d’aller dingen <rhyme label="c" type="m" corresp="#s7:l5">Heer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dit treffelijcke <rhyme label="a" type="m">woordt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Heeft Sion <rhyme label="a" type="m" corresp="#s8:l1">aengehoort</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En ’theeft haer hert doen <rhyme label="b" type="f">smaken</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Een hemel-soet <rhyme label="b" type="f" corresp="#s8:l3">vermaken</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">De maeghdelijcke <rhyme label="c" type="m">jeuchdt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">In Iuda, is vol <rhyme label="c" type="m" corresp="#s8:l5">vreuchdt</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Wanneers’ u oordeel <rhyme label="d" type="m">vaet</rhyme></l>
        <l id="s8:l8" met="3" type="-+">En diep in’t herte <rhyme label="d" type="m" corresp="#s8:l7">laet</rhyme></l>
        <l id="s8:l9" met="3" type="-+">Een soo Godt-waerden <rhyme label="c" type="m" corresp="#s8:l5">deuchdt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Te recht is sy <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Want ghy de hooghste <rhyme label="a" type="m" corresp="#s9:l1">zijt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En alle <rhyme label="b" type="f">Godlijckheden</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Laet d’uwe ver <rhyme label="b" type="f" corresp="#s9:l3">beneden</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">O loffelijck <rhyme label="c" type="m">geslacht</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Dat Godt hoogh lieft en <rhyme label="c" type="m" corresp="#s9:l5">acht</rhyme>!</l>
        <l id="s9:l7" met="3" type="-+">Ontsegt der sonden <rhyme label="d" type="m">quaedt</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Door hertelijcken <rhyme label="d" type="m" corresp="#s9:l7">haet</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">’tBesit van uw’ <rhyme label="c" type="m" corresp="#s9:l5">gedacht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Hy dien ghy lieft en <rhyme label="a" type="m">dient</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Is een getrouwe <rhyme label="a" type="m" corresp="#s10:l1">vriendt</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Den hem-geeyghden <rhyme label="b" type="f">herten</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Noyt laet hys’ in de <rhyme label="b" type="f" corresp="#s10:l3">smerten</rhyme>;</l>
        <l id="s10:l5" met="3" type="-+">Haer ziel is, als een <rhyme label="c" type="m">schat</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Van sijne gunst <rhyme label="c" type="m" corresp="#s10:l5">om-vat</rhyme>;</l>
        <l id="s10:l7" met="3" type="-+">Sijn’ sorgh bewaertse <rhyme label="d" type="m">nauw</rhyme>;</l>
        <l id="s10:l8" met="3" type="-+">Hy rucktse uyt den <rhyme label="d" type="m" corresp="#s10:l7">klauw</rhyme></l>
        <l id="s10:l9" met="3" type="-+">Daer haer de boos’ in <rhyme label="c" type="m" corresp="#s10:l5">had</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">uyt deuchd wordt vreuchd <rhyme label="a" type="m">gemaeyt</rhyme>.</l>
        <l id="s11:l2" met="3" type="-+">Daer is een zaedt <rhyme label="a" type="m" corresp="#s11:l1">gesaeyt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Een zaedt, daer noch den <rhyme label="b" type="f">vromen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Een ziel-glans uyt sal <rhyme label="b" type="f" corresp="#s11:l3">komen</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Een ziel-glans, die’t <rhyme label="c" type="m">gemoedt</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Met een soo soeten <rhyme label="c" type="m" corresp="#s11:l5">soet</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Al-om door-geuren <rhyme label="d" type="m">sal</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Dat geenderley <rhyme label="d" type="m" corresp="#s11:l7">geval</rhyme></l>
        <l id="s11:l9" met="3" type="-+">Hem des ont-dencken <rhyme label="c" type="m" corresp="#s11:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wel aen die ’tgoede <rhyme label="a" type="m">mint</rhyme></l>
        <l id="s12:l2" met="3" type="-+">En smaeck in deuchde <rhyme label="a" type="m" corresp="#s12:l1">vindt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Gehecht aen waerheydts <rhyme label="b" type="f">Leere</rhyme>:</l>
        <l id="s12:l4" met="3" type="-+">Vervroot u in den <rhyme label="b" type="f" corresp="#s12:l3">Heere</rhyme>.</l>
        <l id="s12:l5" met="3" type="-+">Vw’ stemme, door’t <rhyme label="c" type="m">geklanck</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Van tael en soeten <rhyme label="c" type="m" corresp="#s12:l5">sanck</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Prent’ in <rhyme label="d" type="m">geheugenis</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Hem die soo heyligh <rhyme label="d" type="m" corresp="#s12:l7">is</rhyme>,</l>
        <l id="s12:l9" met="3" type="-+">Met vollen loff en <rhyme label="c" type="m" corresp="#s12:l5">danck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
