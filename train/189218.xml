    <melody>Gelijk de beekjes vloeien</melody>
  <author>Cornelis Sweerts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Loflyke deugd wiens waar- <rhyme label="a" type="f">de</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Zich noit in schyn <rhyme label="b" type="m">vertoont</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Daarmen d'ondeugd op <rhyme label="a" type="f" corresp="#s1:l1">aarde</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dickwils met eer <rhyme label="b" type="m" corresp="#s1:l2">bekroont</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Ach! ach! datmen dus <rhyme label="a" type="f" corresp="#s1:l1">ontaarde</rhyme>!</l>
        <l id="s1:l6" met="3" type="-+">En deugd met ondeugd <rhyme label="b" type="m" corresp="#s1:l2">loont</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maar schoon de deugd <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Staat op den throon <rhyme label="b" type="m">gestelt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Daar hem de kroon werd <rhyme label="a" type="f" corresp="#s2:l1">gegeven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En scepter van <rhyme label="b" type="m" corresp="#s2:l2">geweld</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Ach! ach! by hem 't heerlykst <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Noch Crezus gelt niet <rhyme label="b" type="m" corresp="#s2:l2">gelt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Nochtans hoortmen te <rhyme label="a" type="f">kroonen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met eer die niet en <rhyme label="b" type="m">vleid</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hem daar de deugd in wil <rhyme label="a" type="f" corresp="#s3:l1">woonen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En nimmer werd <rhyme label="b" type="m" corresp="#s3:l2">verleid</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Ach! ach! beklimt gy de <rhyme label="a" type="f" corresp="#s3:l1">Throonen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">U voegt de <rhyme label="b" type="m" corresp="#s3:l2">Godlikheid</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
