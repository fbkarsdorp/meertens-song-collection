    <melody>Hansje sneed het koren</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE yd'le lust // maeckt veel <rhyme label="a" type="m">onrust</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En staegh en quelligh <rhyme label="b" type="f">wroeghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die 't al begheert // hier opter <rhyme label="c" type="m">eerd'</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Heeft nimmer sijn <rhyme label="b" type="f" corresp="#s1:l2">ghenoeghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dat yemandt had // oock al de <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die hy hier kan <rhyme label="b" type="f">begheeren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sy soud zijn lust // dan in <rhyme label="c" type="m">onrust</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En quelling doen <rhyme label="b" type="f" corresp="#s2:l2">verkeeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want t'Werelts goet // daer men nae <rhyme label="a" type="m">wroet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wert van de sotte <rhyme label="b" type="f">Doore</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Met moeytt' vergaert // met sorgh <rhyme label="c" type="m">bewaert</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Met droefheyt we'er <rhyme label="b" type="f" corresp="#s3:l2">verloren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dus weest vernoeght // u wille <rhyme label="a" type="m">voeght</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Nae Godes wil // O! <rhyme label="b" type="f">menschen</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">V Godt bemindt // want in hem <rhyme label="c" type="m">vindt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Men al wat men mach <rhyme label="b" type="f" corresp="#s4:l2">wenschen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En sijn goetheyt, soo de Schrift <rhyme label="a" type="m">seyt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Sal u ghenoegh <rhyme label="b" type="f">verlienen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">'t Is blijckelijck // Godt <rhyme label="c" type="m">rijckelijck</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Meer gheeft als wy <rhyme label="b" type="f" corresp="#s5:l2">verdienen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Oorelof dan // 'tzy Vrouw oft <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wilt Godt den Heere <rhyme label="b" type="f">vresen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En danckbaer leeft // met 't gheen Godt <rhyme label="c" type="m">gheeft</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Altijdt vernoeght wilt <rhyme label="b" type="f" corresp="#s6:l2">wesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
