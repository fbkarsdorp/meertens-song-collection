    <melody>Aanhoor toch mijn geklaag gij ruiters</melody>
    <categories>
      <category translation="occasions">gelegenheden</category>
    </categories>
  <author>G.A. Bredero</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ooghen vol <rhyme label="a" type="m">Majesteyt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Vol grootsche <rhyme label="b" type="f">Heerlijckheden</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Hoe komt dat ghy nu <rhyme label="a" type="m" corresp="#s1:l1">scheyt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van u <rhyme label="a" type="m" corresp="#s1:l1">Eerwaerdigheydt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">En soete <rhyme label="a" type="m" corresp="#s1:l1">aerdigheyt</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Laas! wat <rhyme label="a" type="m" corresp="#s1:l1">lichtvaerdigheyt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Aanneemdy sonder <rhyme label="b" type="f" corresp="#s1:l2">reden</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Van waar komt dit <rhyme label="a" type="m">versmaan</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Voorwaar ick kant niet <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Noch geenerwijs <rhyme label="a" type="m" corresp="#s2:l1">verstaan</rhyme></l>
        <l id="s2:l4" met="3" type="-+">De oorsaak van dit <rhyme label="a" type="m" corresp="#s2:l1">gaan</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">(U quelt misschien, een <rhyme label="a" type="m" corresp="#s2:l1">waan</rhyme>)</l>
        <l id="s2:l6" met="3" type="-+">Soo ic u heb <rhyme label="a" type="m" corresp="#s2:l1">misdaan</rhyme></l>
        <l id="s2:l7" met="3" type="-+">'T is met te veel te <rhyme label="b" type="f" corresp="#s2:l2">minnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die Waan quelt u <rhyme label="a" type="m">misschien</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat ic u soeck te <rhyme label="b" type="f">vryen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">'K heb noyt soo hoogh <rhyme label="a" type="m" corresp="#s3:l1">gesien</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Of ic wist wel op <rhyme label="a" type="m" corresp="#s3:l1">wien</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Want die machtighe <rhyme label="a" type="m" corresp="#s3:l1">Lien</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die soecken te <rhyme label="a" type="m" corresp="#s3:l1">ghebien</rhyme></l>
        <l id="s3:l7" met="3" type="-+">En dat can ic niet <rhyme label="b" type="f" corresp="#s3:l2">lijen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ick ben te groot van <rhyme label="a" type="m">moedt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Om yemandt yet te <rhyme label="b" type="f">achten</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Om Rijcdom, of om <rhyme label="a" type="m" corresp="#s4:l1">goedt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Sot is hy die't ooc <rhyme label="a" type="m" corresp="#s4:l1">doet</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Ic prijs u Edel <rhyme label="a" type="m" corresp="#s4:l1">bloedt</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">Dat God'lijc is <rhyme label="a" type="m" corresp="#s4:l1">ghevoedt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Met Hemelsche <rhyme label="b" type="f" corresp="#s4:l2">ghedachten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daar ghy, myn vaack met <rhyme label="a" type="m">speest</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Als ic hier quam <rhyme label="b" type="f">verkeeren</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Ootmoedich, en <rhyme label="a" type="m" corresp="#s5:l1">bevreest</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Voornaamlijck <rhyme label="a" type="m" corresp="#s5:l1">aldermeest</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Om u geswinde <rhyme label="a" type="m" corresp="#s5:l1">gheest</rhyme>!</l>
        <l id="s5:l6" met="3" type="-+">'K heb noyt soo stout <rhyme label="a" type="m" corresp="#s5:l1">geweest</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Dat ic u dorst <rhyme label="b" type="f" corresp="#s5:l2">begheeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maar lieve oogjens <rhyme label="a" type="m">bly</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En heught u niet het <rhyme label="b" type="f">wencken</rhyme>?</l>
        <l id="s6:l3" met="3" type="-+">En t'gluuren van ter <rhyme label="a" type="m" corresp="#s6:l1">sy</rhyme>?</l>
        <l id="s6:l4" met="3" type="-+">En t'loncken teghens <rhyme label="a" type="m" corresp="#s6:l1">my</rhyme>?</l>
        <l id="s6:l5" met="3" type="-+">Soo vriendelijc als <rhyme label="a" type="m" corresp="#s6:l1">vry</rhyme>?</l>
        <l id="s6:l6" met="3" type="-+">Nochtans op <rhyme label="a" type="m" corresp="#s6:l1">vryery</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Heb ick noyt willen <rhyme label="b" type="f" corresp="#s6:l2">dencken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hoe sou eender van <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als ick, dat dencken <rhyme label="b" type="f">kunnen</rhyme>?</l>
        <l id="s7:l3" met="3" type="-+">Hy mocht: door feyl van <rhyme label="a" type="m" corresp="#s7:l1">raat</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Oft om syn eygen <rhyme label="a" type="m" corresp="#s7:l1">baat</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">O Vrouwelijck <rhyme label="a" type="m" corresp="#s7:l1">Cieraat</rhyme>!</l>
        <l id="s7:l6" met="3" type="-+">Ick sou u soo veel <rhyme label="a" type="m" corresp="#s7:l1">quaat</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Om myn niet mogen <rhyme label="b" type="f" corresp="#s7:l2">gunnen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghy ziet mijn Liefde <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Met inderlijck <rhyme label="b" type="f">meedooghen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ick kent, dat ick <rhyme label="a" type="m" corresp="#s8:l1">(Vriendin</rhyme>)</l>
        <l id="s8:l4" met="3" type="-+">U als myn Ziel <rhyme label="a" type="m" corresp="#s8:l1">bemin</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Maer eer ick meer <rhyme label="a" type="m" corresp="#s8:l1">begin</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ghy sluyt my uyt u <rhyme label="a" type="m" corresp="#s8:l1">sin</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En bandt my van u <rhyme label="b" type="f" corresp="#s8:l2">ooghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ooghen! ist dat ick <rhyme label="a" type="m">dan</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Myn lantwinning moet <rhyme label="b" type="f">derven</rhyme>?</l>
        <l id="s9:l3" met="3" type="-+">So bid ick ziet eens <rhyme label="a" type="m" corresp="#s9:l1">an</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">My! d'alderdroefste <rhyme label="a" type="m" corresp="#s9:l1">Man</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Die oyt Moeder <rhyme label="a" type="m" corresp="#s9:l1">ghewan</rhyme>:</l>
        <l id="s9:l6" met="3" type="-+">Overmits dat ick <rhyme label="a" type="m" corresp="#s9:l1">van</rhyme></l>
        <l id="s9:l7" met="3" type="-+">De braefste ziel moet <rhyme label="b" type="f" corresp="#s9:l2">swerven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
