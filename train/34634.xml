  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">ICk sit hier <rhyme label="a" type="f">eenigh</rhyme></l>
        <l id="s1:l2" met="2" type="-+">In 't een-saem <rhyme label="b" type="m">veldt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Den heeten brandt en <rhyme label="c" type="m">klaegh'</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Door liefde <rhyme label="a" type="f" corresp="#s1:l1">weenigh</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">En heel <rhyme label="b" type="m" corresp="#s1:l2">mis-stelt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Om een die my <rhyme label="c" type="m" corresp="#s1:l3">ghestaegh</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Door landt // en <rhyme label="d" type="m">sandt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Vliedend' ontsprongh den <rhyme label="d" type="m" corresp="#s1:l7">brandt</rhyme>:</l>
        <l id="s1:l9" met="3" type="-+">Daer ick haer hebb' in <rhyme label="d" type="m" corresp="#s1:l7">hand'</rhyme></l>
        <l id="s1:l10" met="3" type="+-">Krijgh' ick laes ! noyt tot <rhyme label="d" type="m" corresp="#s1:l7">pandt</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Van haer eenen soeten <rhyme label="e" type="m">kus</rhyme>,</l>
        <l id="s1:l12" met="4" type="+-">Die my vast ghebonden <rhyme label="e" type="m" corresp="#s1:l11">dus</rhyme></l>
        <l id="s1:l13" met="3" type="-+">Hier houdt, door 's liefdens <rhyme label="d" type="m" corresp="#s1:l7">bandt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ick hebb' in 't <rhyme label="a" type="f">ronden</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Mijn Lief <rhyme label="b" type="m">ghesocht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Eylacy ! al voor <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Want 'k hebb' <rhyme label="a" type="f" corresp="#s2:l1">ghevonden</rhyme></l>
        <l id="s2:l5" met="2" type="-+">(Soo my best <rhyme label="b" type="m" corresp="#s2:l2">docht'</rhyme>)</l>
        <l id="s2:l6" met="3" type="-+">S'is verandert in <rhyme label="c" type="m" corresp="#s2:l3">riet</rhyme>:</l>
        <l id="s2:l7" met="2" type="-+">Ick blies // en 't <rhyme label="d" type="m">lies</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Riep Syringas name <rhyme label="d" type="m" corresp="#s2:l7">uyt</rhyme>:</l>
        <l id="s2:l9" met="3" type="-+">Du ick 't nu vast <rhyme label="d" type="m" corresp="#s2:l7">besluyt'</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">En wil hier van een <rhyme label="d" type="m" corresp="#s2:l7">fluyt</rhyme></l>
        <l id="s2:l11" met="4" type="+-">Maken, en mijn pijnen <rhyme label="e" type="m">all'</rhyme></l>
        <l id="s2:l12" met="4" type="+-">Braken aen dit wild'righ <rhyme label="e" type="m" corresp="#s2:l11">dal</rhyme>,</l>
        <l id="s2:l13" met="3" type="-+">Oft droef'lijck spelen <rhyme label="d" type="m" corresp="#s2:l7">uyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Syringa midts dat <rhyme label="a" type="f">ghy</rhyme></l>
        <l id="s3:l2" met="2" type="-+">In dit droogh <rhyme label="b" type="m">riet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">My niet we'er minnen <rhyme label="c" type="m">kont</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Laet toe nochtans dat <rhyme label="a" type="f" corresp="#s3:l1">my</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Een-ieder <rhyme label="b" type="m" corresp="#s3:l2">siet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van u altijdt <rhyme label="c" type="m" corresp="#s3:l3">ghewondt</rhyme>:</l>
        <l id="s3:l7" met="2" type="-+">By my // sult <rhyme label="d" type="m">ghy</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Levende zijn <rhyme label="d" type="m" corresp="#s3:l7">altijdt</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">In spijt des gragghen <rhyme label="d" type="m" corresp="#s3:l7">tijdt</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">En 's hemels zwerten <rhyme label="d" type="m" corresp="#s3:l7">nijdt</rhyme></l>
        <l id="s3:l11" met="4" type="+-">Sal ick spelen uwen <rhyme label="e" type="m">lof</rhyme>,</l>
        <l id="s3:l12" met="4" type="+-">En er-galmen fijn en <rhyme label="e" type="m" corresp="#s3:l11">grof</rhyme></l>
        <l id="s3:l13" met="3" type="-+">Hier op tot Goden <rhyme label="d" type="m" corresp="#s3:l7">spijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
