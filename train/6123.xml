      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DAt ick de sond' dus lang heb <rhyme label="a" type="m">gedaen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat mach my nu wel <rhyme label="b" type="f">rouwen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick heb de werlt so langh <rhyme label="c" type="m">gedient</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Sy was mijn <rhyme label="c" type="m" corresp="#s1:l3">vrient</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ick vontse noyt <rhyme label="b" type="f" corresp="#s1:l2">getrouwe</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nu wil ick de werelt varen <rhyme label="a" type="m">laten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En my van sonden <rhyme label="b" type="f">wachten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sy volcht my <rhyme label="c" type="m">na</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Waer dat ick gae, waer dat ick <rhyme label="c" type="m" corresp="#s2:l3">stae</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">By dagen, en oock by <rhyme label="b" type="f" corresp="#s2:l2">nachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De werelt, de vyant, en het <rhyme label="a" type="m">vleysch</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die quellen my alsoo <rhyme label="b" type="f">seere</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Sy brengen so menigen swaren <rhyme label="c" type="m">geveyns</rhyme></l>
        <l id="s3:l4" met="2" type="-+">In mijn <rhyme label="c" type="m" corresp="#s3:l3">gepeyns</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dus helpt my rijcke Godt en <rhyme label="b" type="f" corresp="#s3:l2">Heere</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Helpt my dat ick verwinnen <rhyme label="a" type="m">mach</rhyme></l>
        <l id="s4:l2" met="3" type="-+">O Jesus lieve <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Al zijn mijn sinnekens my dus <rhyme label="c" type="m">dwaes</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">O Heer <rhyme label="c" type="m" corresp="#s4:l3">eylaes</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Ick hoop sy sullen eens <rhyme label="b" type="f" corresp="#s4:l2">keeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een Cruys van vijftien voeten <rhyme label="a" type="m">lang</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Heeft hy voor ons <rhyme label="b" type="f">gedragen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Men vinter geen trou aen genen <rhyme label="c" type="m">man</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Meer dan aen <rhyme label="c" type="m" corresp="#s5:l3">hem</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dus sal ick 't niemant <rhyme label="b" type="f" corresp="#s5:l2">clagen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">De tacxkens zijn wijt <rhyme label="a" type="m">wtgespreyt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">De rooskens zijn <rhyme label="b" type="f">ontloken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Mijn lief reyckt uyt de armen <rhyme label="c" type="m">bloot</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Aen 't cruys seer <rhyme label="c" type="m" corresp="#s6:l3">root</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">In hem staet alle mijn <rhyme label="b" type="f" corresp="#s6:l2">hopen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wie in hem hoopt, wie aen hem <rhyme label="a" type="m">hoopt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Sijn hoop blijft niet <rhyme label="b" type="f">verloren</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hy isser alleen de liefste <rhyme label="c" type="m">mijn</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Hy wilt oock <rhyme label="c" type="m" corresp="#s7:l3">zijn</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Hy is mijn <rhyme label="b" type="f" corresp="#s7:l2">wtvercoren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Calvarien is so schoon en <rhyme label="a" type="m">vroom</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Daer wil ick my gaen <rhyme label="b" type="f">vermeyen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">En rusten my onder den Cruycen <rhyme label="c" type="m">boom</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Hy is so <rhyme label="c" type="m" corresp="#s8:l3">schoon</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Daer wil ick mijn lief <rhyme label="b" type="f" corresp="#s8:l2">verbeyen</rhyme>.</l>
      </lg>
    </lg>
  </text>
