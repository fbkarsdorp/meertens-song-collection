  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Die van den Wet ons heeft <rhyme label="a" type="m">gheurijt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En ghemaeckt quijt der <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Heeft hem onderworpen <rhyme label="a" type="m" corresp="#s1:l1">subijt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Met Adams kinderen vol <rhyme label="b" type="f" corresp="#s1:l2">wonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daerom syn wy vry van den <rhyme label="a" type="m">wet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En van hen niet <rhyme label="b" type="f">versopen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Want Christus is onsen schat <rhyme label="a" type="m" corresp="#s2:l1">net</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Op wien wy seker <rhyme label="b" type="f" corresp="#s2:l2">hopen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den Sone Godes heeft oock syn <rhyme label="a" type="m">bloet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ghestort noch ionck van <rhyme label="b" type="f">Jaren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Waer door wy crijghen al dit <rhyme label="a" type="m" corresp="#s3:l1">goet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat ons den wet niet mach <rhyme label="b" type="f" corresp="#s3:l2">veruaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die voor den Sone vry is <rhyme label="a" type="m">befaempt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die is den wet <rhyme label="b" type="f">ontronnen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daerom is hy Jhesus <rhyme label="a" type="m" corresp="#s4:l1">ghenaempt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Den Hemel heeft hy <rhyme label="b" type="f" corresp="#s4:l2">ghewonnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nochtans en syn wy niet so <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat sonde vry sou <rhyme label="b" type="f">blijuen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Oft dat sonde gheen onrecht <rhyme label="a" type="m" corresp="#s5:l1">sy</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In haers willens <rhyme label="b" type="f" corresp="#s5:l2">bedrijuen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den Heere spreeckt: Ick ben u <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Nochtans moet ghy recht <rhyme label="b" type="f">wandelen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ick sal volbrenghen mijn <rhyme label="a" type="m" corresp="#s6:l1">ghebodt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Maer ghy moet oock slecht <rhyme label="b" type="f" corresp="#s6:l2">handelen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och Godt dat wy dit recht <rhyme label="a" type="m">verstaen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Wilt met den Gheest ons <rhyme label="b" type="f">beurijden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dat wy die boosheyt heel <rhyme label="a" type="m" corresp="#s7:l1">afgaen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En sonden willich <rhyme label="b" type="f" corresp="#s7:l2">mijden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Afsnijdende des voorhuyts <rhyme label="a" type="m">lust</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">U tot een offer <rhyme label="b" type="f">ghegheuen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Sijnde door u ghenade <rhyme label="a" type="m" corresp="#s8:l1">gherust</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Nae uwen wille te <rhyme label="b" type="f" corresp="#s8:l2">leuen</rhyme>.</l>
      </lg>
    </lg>
  </text>
