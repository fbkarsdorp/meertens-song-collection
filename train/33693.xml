    <melody>Als Jezus in zijn majesteit</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Jesus hadt den Doop <rhyme label="a" type="m">ontfaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Is hy na de Woestijn <rhyme label="a" type="m" corresp="#s1:l1">gegaen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Om daer Duyvels <rhyme label="b" type="f">tenteringh</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Te lijden tot ons <rhyme label="b" type="f" corresp="#s1:l3">leeringh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy vaste veertigh daegh en <rhyme label="a" type="m">naght</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Tot dat den honger had' sijn <rhyme label="a" type="m" corresp="#s2:l1">kraght</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Toen is tot hem <rhyme label="b" type="f">gekoomen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Den Vyant van de <rhyme label="b" type="f" corresp="#s2:l3">vromen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En den Tenteerder seydt uyt <rhyme label="a" type="m">nijt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ist saek dat gy Goodts Soone <rhyme label="a" type="m" corresp="#s3:l1">sijt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dees steenen doet <rhyme label="b" type="f">verkeeren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In broodt na uw <rhyme label="b" type="f" corresp="#s3:l3">begeeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer Jesus seydt, men leeft van 't <rhyme label="a" type="m">woort</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Het welk uyt Goodes mondt komt <rhyme label="a" type="m" corresp="#s4:l1">voort</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Alleen broodt geeft geen <rhyme label="b" type="f">leeven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gelijk daer staet <rhyme label="b" type="f" corresp="#s4:l3">geschreeven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Toen nam den Duyvel hem weer <rhyme label="a" type="m">op</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En steld' hem op des Tempels <rhyme label="a" type="m" corresp="#s5:l1">top</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sijt gy Soon van den <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Werpt u van boven <rhyme label="b" type="f" corresp="#s5:l3">neere</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sijn Engelen die hebben <rhyme label="a" type="m">last</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">U t'houden in haer handen <rhyme label="a" type="m" corresp="#s6:l1">vast</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Op dat g' u niet <rhyme label="b" type="f">beseere</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Na der Schrifturen <rhyme label="b" type="f" corresp="#s6:l3">leere</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer Jesus geeft daer op <rhyme label="a" type="m">bescheyt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Weerom de heyl'ge Schrifte <rhyme label="a" type="m" corresp="#s7:l1">seyt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Gy sult uw' Godt uw' <rhyme label="b" type="f">Heere</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Op geen manier <rhyme label="b" type="f" corresp="#s7:l3">tenteere</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Toen nam hem weer den Duyvel <rhyme label="a" type="m">ergh</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En steld' hem op een hoogen <rhyme label="a" type="m" corresp="#s8:l1">bergh</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En toond' hem 's Weerelts <rhyme label="b" type="f">rijken</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En glori al <rhyme label="b" type="f" corresp="#s8:l3">gelijken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">En seydt uyt groote <rhyme label="a" type="m">hovaerdy</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Soo gy neervalt en aenbidt <rhyme label="a" type="m" corresp="#s9:l1">my</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Sal ik als <rhyme label="b" type="f">liberale</rhyme></l>
        <l id="s9:l4" met="3" type="-+">U geeven <rhyme label="b" type="f" corresp="#s9:l3">al-te-male</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Maer Jesus seyde, Satan <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Want in de Heyl'ge Schrifte <rhyme label="a" type="m" corresp="#s10:l1">staet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Uw' Heer uw' Godt <rhyme label="b" type="f">alleene</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Aenbidt, dient anders <rhyme label="b" type="f" corresp="#s10:l3">geene</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Toen is den Duyvel vlughten <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">En d'Heyligh Engels quamen <rhyme label="a" type="m" corresp="#s11:l1">aen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En dienden met veel <rhyme label="b" type="f">eere</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Haer ende onsen <rhyme label="b" type="f" corresp="#s11:l3">Heere</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ons Vasten Heer <rhyme label="a" type="m">gebenedijt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Op dat wy vroom sijn tot den <rhyme label="a" type="m" corresp="#s12:l1">strijdt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Dat wy met u <rhyme label="b" type="f">beginnen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Den Duyvel te <rhyme label="b" type="f" corresp="#s12:l3">verwinnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
