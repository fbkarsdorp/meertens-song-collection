  <author>Johannes Wilhelmus Bussingh</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wat zal ik angstig <rhyme label="a" type="f">klagen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En bij het kruis <rhyme label="a" type="f" corresp="#s1:l1">vertzagen</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Mijn Vader zorgt voor <rhyme label="b" type="m">mij</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Hij zorgt: - ja, op mijn <rhyme label="c" type="f">beden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Bestuurt Hij mijne <rhyme label="c" type="f" corresp="#s1:l4">schreden</rhyme>. -</l>
        <l id="s1:l6" met="3" type="-+">Dat dit mijn hart <rhyme label="b" type="m" corresp="#s1:l3">verblijê</rhyme>. -</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat baten angst en <rhyme label="a" type="f">zorgen</rhyme>? -</l>
        <l id="s2:l2" met="3" type="-+">Wat helpt ons, ied'ren <rhyme label="a" type="f" corresp="#s2:l1">morgen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Gemor, geween, <rhyme label="b" type="m">gezucht</rhyme>? -</l>
        <l id="s2:l4" met="3" type="-+">Mijn Vader kent mijn <rhyme label="c" type="f">noden</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Reeds wordt mij hulp <rhyme label="c" type="f" corresp="#s2:l4">geboden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Eer 'k biddend tot Hem <rhyme label="b" type="m" corresp="#s2:l3">vlucht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Op U als rots te <rhyme label="a" type="f">bouwen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">U alles te <rhyme label="a" type="f" corresp="#s3:l1">vertrouwen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">ô God, die 't al <rhyme label="b" type="m">gebied</rhyme>! -</l>
        <l id="s3:l4" met="3" type="-+">Dees edelsten der <rhyme label="c" type="f">plichten</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Leer Gij mij dien <rhyme label="c" type="f" corresp="#s3:l4">verrichten</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Onttrek me Uw' bijstand <rhyme label="b" type="m" corresp="#s3:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Gij, van wien bloem en <rhyme label="a" type="f">velden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Den roem, de grootheid <rhyme label="a" type="f" corresp="#s4:l1">melden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die 't vee zelfs spijs <rhyme label="b" type="m">bereid</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Neen; Gij zult aen mij <rhyme label="c" type="f">denken</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Het beste deel mij <rhyme label="c" type="f" corresp="#s4:l4">schenken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Voor tijd en <rhyme label="b" type="m" corresp="#s4:l3">eeuwigheid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mijn ziel, met alle uw <rhyme label="a" type="f">noden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dan naer Gods throon <rhyme label="a" type="f" corresp="#s5:l1">gevloden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En daer dien nood <rhyme label="b" type="m">geklaegd</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Hij wil, in angst en <rhyme label="c" type="f">lijden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Het moed'loos hart <rhyme label="c" type="f" corresp="#s5:l4">verblijden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat Hem om bijstand <rhyme label="b" type="m" corresp="#s5:l3">vraegt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ja; met mijn leed <rhyme label="a" type="f">bewogen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Zal Hij mijn tranen <rhyme label="a" type="f" corresp="#s6:l1">drogen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Hij merkt op ied'ren <rhyme label="b" type="m">zucht</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die, aen 't Hem zoekend <rhyme label="c" type="f">harte</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Uit overmaet van <rhyme label="c" type="f" corresp="#s6:l4">smarte</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">In 't prangend leed, <rhyme label="b" type="m" corresp="#s6:l3">ontvlucht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">ô Gaed'loos <rhyme label="a" type="f">medelijden</rhyme>! -</l>
        <l id="s7:l2" met="3" type="-+">Om zondaers te <rhyme label="a" type="f" corresp="#s7:l1">bevrijden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Schonk God Zijn' eigen <rhyme label="b" type="m">Zoon</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">En, zou Hij, voor dit <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Dan 't mind're goed niet <rhyme label="c" type="f" corresp="#s7:l4">geven</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Gebeden van Zijn <rhyme label="b" type="m" corresp="#s7:l3">throon</rhyme>? -</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ja! - In de reine <rhyme label="a" type="f">plasschen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van jesus bloed <rhyme label="a" type="f" corresp="#s8:l1">gewasschen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ben ik een kind van <rhyme label="b" type="m">God</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Hoe duister 't dan moog <rhyme label="c" type="f">wezen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">'k Zal nooit wanhopend <rhyme label="c" type="f" corresp="#s8:l4">vrezen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Mijn Vader stuurt mijn <rhyme label="b" type="m" corresp="#s8:l3">lot</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Mijn Vader doet de <rhyme label="a" type="f">Zijnen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Niet altijd treurig <rhyme label="a" type="f" corresp="#s9:l1">kwijnen</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Eens wisselt al de <rhyme label="b" type="m">druk</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Wanneer wij op Hem <rhyme label="c" type="f">bouwen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En 't aen Zijn raed <rhyme label="c" type="f" corresp="#s9:l4">vertrouwen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">In eindeloos <rhyme label="b" type="m" corresp="#s9:l3">geluk</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ja; eenmael 't stof <rhyme label="a" type="f">onttogen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Kniel ik voor 't <rhyme label="a" type="f" corresp="#s10:l1">Alvermogen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Geheel bewond'ring, <rhyme label="b" type="m">neêr</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">Daer zal ik steeds <rhyme label="c" type="f">ervaren</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Hoe goed Gods wegen <rhyme label="c" type="f" corresp="#s10:l4">waren</rhyme>;</l>
        <l id="s10:l6" met="3" type="-+">Hem zij dan eeuwig <rhyme label="b" type="m" corresp="#s10:l3">eer</rhyme>! -</l>
      </lg>
    </lg>
  </text>
