    <melody>Psalm 006 Datheen</melody>
  <author>Isaak A. van Vaerlen en Jan Jansz. van Asten</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">KOmt met betraende <rhyme label="a" type="f">Ooghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En Zielen neer <rhyme label="a" type="f" corresp="#s1:l1">gheboghen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghy menschelijck <rhyme label="b" type="m">gheslacht</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Siet eens op Christus <rhyme label="c" type="f">lijen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En sijn bedroefde <rhyme label="c" type="f" corresp="#s1:l4">tijen</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">Slaet hier doch wel op <rhyme label="b" type="m" corresp="#s1:l3">acht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat heeft Godt Bloedt <rhyme label="a" type="f">vergoten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Door 't slaen en 't vinnigh <rhyme label="a" type="f" corresp="#s2:l1">stooten</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Van 't goddeloose <rhyme label="b" type="m">Rot</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Alleen voor onse <rhyme label="c" type="f">sonden</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Wie kan te recht <rhyme label="c" type="f" corresp="#s2:l4">vermonden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hoe dat hy is <rhyme label="b" type="m" corresp="#s2:l3">bespot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De wreede <rhyme label="a" type="f">Moordenaren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die quamen staegh <rhyme label="a" type="f" corresp="#s3:l1">verzwaren</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Sijn noyt gehoorde <rhyme label="b" type="m">smart</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Soo met ghestrenghe <rhyme label="c" type="f">Koorden</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Als wouden sy <rhyme label="c" type="f" corresp="#s3:l4">vermoorden</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Dit recht onnoosel <rhyme label="b" type="m" corresp="#s3:l3">hart</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den Croon met scharpe <rhyme label="a" type="f">Doorens</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die drunckten sy vol <rhyme label="a" type="f" corresp="#s4:l1">toorens</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Op 't Hooft van 't suyver <rhyme label="b" type="m">Lam</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Wiens Wonden Bloedigh <rhyme label="c" type="f">leken</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En plaets voor plaets <rhyme label="c" type="f" corresp="#s4:l4">bestreken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Waer dat den Schepper <rhyme label="b" type="m" corresp="#s4:l3">quam</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy most het Cruyse <rhyme label="a" type="f">draghen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ghemenght met zware <rhyme label="a" type="f" corresp="#s5:l1">plaghen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Vol bitterlijcke <rhyme label="b" type="m">Gal</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">De Rechters hem <rhyme label="c" type="f">verwesen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Nochtans en vonde <rhyme label="c" type="f" corresp="#s5:l4">desen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">In hem, gheen schuldt met <rhyme label="b" type="m" corresp="#s5:l3">al</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sijn onbevleckte <rhyme label="a" type="f">Leden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Doorhackelt en <rhyme label="a" type="f" corresp="#s6:l1">doorsneden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die werden <rhyme label="b" type="m">uyt-ghereckt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Aen 't hout, tusschen twee <rhyme label="c" type="f">Sielen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Daer most dit Lijf <rhyme label="c" type="f" corresp="#s6:l4">ontzielen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En zijn noch snood <rhyme label="b" type="m" corresp="#s6:l3">begheckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O hoogh verheven <rhyme label="a" type="f">Rechter</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">O Kamper ende <rhyme label="a" type="f" corresp="#s7:l1">Vechter</rhyme>!</l>
        <l id="s7:l3" met="3" type="-+">Verwinner van de <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wilt ons te saem <rhyme label="c" type="f">ontfarmen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Met uytghestreckte <rhyme label="c" type="f" corresp="#s7:l4">Armen</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">In dijn <rhyme label="b" type="m" corresp="#s7:l3">Ghenaden-schoot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghy leert ons 't weligh <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s8:l2" met="3" type="-+">De Schop en 't Schey-mael <rhyme label="a" type="f" corresp="#s8:l1">gheven</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Om door dees <rhyme label="b" type="m">Offerhandt</rhyme></l>
        <l id="s8:l4" met="3" type="-+">De straf der Hel 't <rhyme label="c" type="f">ontvluchten</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En reysen in <rhyme label="c" type="f" corresp="#s8:l4">ghenuchten</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Met u, naer 't Heyligh <rhyme label="b" type="m" corresp="#s8:l3">Landt</rhyme>.</l>
      </lg>
    </lg>
  </text>
