    <tags/>
    <melody>Zullen dan mijn droeve klachten</melody>
  <author>Jacob Groenewegen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Op myn neergebooge <rhyme label="a" type="f">herte</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dat na Iesus lievde <rhyme label="b" type="m">blaakt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En gestaag door druk en <rhyme label="a" type="f" corresp="#s1:l1">smerte</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">U gewond vind en <rhyme label="b" type="m" corresp="#s1:l2">geraakt</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">By den Heyland is <rhyme label="c" type="f">ontferming</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Voor den Arme, een <rhyme label="c" type="f" corresp="#s1:l5">bescherming</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Voor een die zig Leedig <rhyme label="d" type="m">ziet</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Hy wil hooren,, Hy wil <rhyme label="e" type="f">hooren</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Na en Ziel die tot hem <rhyme label="d" type="m" corresp="#s1:l7">vliet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wel wat staat gy dan te <rhyme label="a" type="f">wagten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Is dan Iesus niet <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Voor die in haar druk <rhyme label="a" type="f" corresp="#s2:l1">versmagten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Heeft hy oyt wel neen <rhyme label="b" type="m" corresp="#s2:l2">geseyt</rhyme>?</l>
        <l id="s2:l5" met="4" type="+-">Tot een die was heel <rhyme label="c" type="f">belaaden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En zig nergens kon <rhyme label="c" type="f" corresp="#s2:l5">verzaaden</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Heeft hy u niet zelvs <rhyme label="d" type="m">gelast</rhyme>?</l>
        <l id="s2:l8" met="4" type="+-">Komt maar tot my, Komt maar tot <rhyme label="e" type="f">my</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Soo beladen en <rhyme label="d" type="m" corresp="#s2:l7">belast</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Durft gy ’t egter nog niet <rhyme label="a" type="f">waagen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Denkt gy meent ook Iesus <rhyme label="b" type="m">my</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Wilt dat zelvs den Heyland <rhyme label="a" type="f" corresp="#s3:l1">vragen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Vragen immer staat u <rhyme label="b" type="m" corresp="#s3:l2">vry</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Heeft hy u ooyt uyt <rhyme label="c" type="f">geflooten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Imant wel voor ’t hooft <rhyme label="c" type="f" corresp="#s3:l5">gestooten</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Hy is al ten goeden <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Ey komt waagt het,, Ey komt waagt <rhyme label="e" type="f">het</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">En valt voor zyn voeten <rhyme label="d" type="m" corresp="#s3:l7">neer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Openbaart hem uwe <rhyme label="a" type="f">zonden</rhyme>;</l>
        <l id="s4:l2" met="4" type="+-">Toont hem u verbryselt <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Tragt te schuylen in zyn <rhyme label="a" type="f" corresp="#s4:l1">wonden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Soekt u vreugden in zyn <rhyme label="b" type="m" corresp="#s4:l2">smert</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Doet als Vader Iacob <rhyme label="c" type="f">deeden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Stryd met hem in den <rhyme label="c" type="f" corresp="#s4:l5">gebeeden</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Soo krygt gy den zeegen <rhyme label="d" type="m">wis</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Want zyn naame,, Want zyn <rhyme label="e" type="f">naame</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Want zyn Naam ontfermer <rhyme label="d" type="m" corresp="#s4:l7">is</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Denkt de Cananeesche <rhyme label="a" type="f">Vrouwe</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Sloeg hy in het eerst wel <rhyme label="b" type="m">af</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Maar hoe wist zy aan te <rhyme label="a" type="f" corresp="#s5:l1">houwe</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Tot dat hy haar beede <rhyme label="b" type="m" corresp="#s5:l2">gaf</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Hy zal u ook zeker <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Want hy laat niet gaan <rhyme label="c" type="f" corresp="#s5:l5">verlooren</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Die in waarheid om hem <rhyme label="d" type="m">schreid</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Geeft geen moet op,, Geeft geen moet <rhyme label="e" type="f">op</rhyme>,</l>
        <l id="s5:l9" met="4" type="+-">Want hy heeft het <rhyme label="d" type="m" corresp="#s5:l7">toegezeyd</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Sou een Schaapje gaan <rhyme label="a" type="f">verlooren</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Vry gekocht door Iesus <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Heeft God niet met Eed <rhyme label="a" type="f" corresp="#s6:l1">gezwooren</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Dat hy ’t deel wil zyn, en <rhyme label="b" type="m" corresp="#s6:l2">goed</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Voor die zig geheel <rhyme label="c" type="f">mistrouwen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Al hun heyl op Iesus <rhyme label="c" type="f" corresp="#s6:l5">bouwen</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Ey ziet eens na binnen <rhyme label="d" type="m">ziel</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Ist niet Iesus,, Ist niet <rhyme label="e" type="f">Iesus</rhyme>,</l>
        <l id="s6:l9" met="4" type="+-">Die u maar alleen <rhyme label="d" type="m" corresp="#s6:l7">beviel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wat getuygen al die <rhyme label="a" type="f">traanen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Uytgestort voor Iesus <rhyme label="b" type="m">Troon</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Kost gy Vader niet eens <rhyme label="a" type="f" corresp="#s7:l1">manen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Om het heilgoed van zyn <rhyme label="b" type="m" corresp="#s7:l2">Zoon</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Sou de Heere u <rhyme label="c" type="f">vergeeten</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Sou hy van u druk niet <rhyme label="c" type="f" corresp="#s7:l5">weeten</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Gaert hy dan de traanen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">In zyn Flessche,, In zyn <rhyme label="e" type="f">Flessche</rhyme>?</l>
        <l id="s7:l9" met="4" type="+-">Ia hy weegt al u <rhyme label="d" type="m" corresp="#s7:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Weet gy niet tot hem te <rhyme label="a" type="f">komen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Vraegt het Iesus als <rhyme label="b" type="m">Propheet</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Waarom zoud gy voor hem <rhyme label="a" type="f" corresp="#s8:l1">schromen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Want hy zelvs u dwaasheyd <rhyme label="b" type="m" corresp="#s8:l2">weet</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Gaat u aan zyn voeten <rhyme label="c" type="f">zetten</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Wilt steeds op zyn leering <rhyme label="c" type="f" corresp="#s8:l5">letten</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Want hy leert, dat herte <rhyme label="d" type="m">raakt</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Hy geeft lessche,, Hy geeft <rhyme label="e" type="f">lessche</rhyme>,</l>
        <l id="s8:l9" met="4" type="+-">Die de ziele wyser <rhyme label="d" type="m" corresp="#s8:l7">maakt</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Vind g’ een modderpoel van <rhyme label="a" type="f">zonden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Daar u ziel als in <rhyme label="b" type="m">versmoort</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Zyn het lang vervuylde <rhyme label="a" type="f" corresp="#s9:l1">wonden</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Wel mijn ziel ey lieven <rhyme label="b" type="m" corresp="#s9:l2">hoort</rhyme>;</l>
        <l id="s9:l5" met="4" type="+-">Voor het zondig bitter <rhyme label="c" type="f">alzem</rhyme>;</l>
        <l id="s9:l6" met="4" type="+-">Heeft u Iesu heylzaam <rhyme label="c" type="f" corresp="#s9:l5">balzem</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">’k Meen zyn overdierbaar <rhyme label="d" type="m">bloet</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">O dat reynigt,, O dat <rhyme label="e" type="f">reynigt</rhyme>,</l>
        <l id="s9:l9" met="4" type="+-">U van al u zonden <rhyme label="d" type="m" corresp="#s9:l7">vloet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Maar ag! denkt gy myn <rhyme label="a" type="f">vyanden</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Zyn zo listig, sterk en <rhyme label="b" type="m">boos</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Die my onverhoeds <rhyme label="a" type="f" corresp="#s10:l1">aanranden</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Duyvel, Werelt, vlees, zo <rhyme label="b" type="m" corresp="#s10:l2">loos</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">En ik Arme heb geen <rhyme label="c" type="f">kragten</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">’k Vrees ik zal nog eens <rhyme label="c" type="f" corresp="#s10:l5">versmagten</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">En zy overwinnaar <rhyme label="d" type="m">zyn</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">En dat doet my,, En dat doet <rhyme label="e" type="f">my</rhyme>,</l>
        <l id="s10:l9" met="4" type="+-">Schier versinken in de <rhyme label="d" type="m" corresp="#s10:l7">pyn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Ia myn ziel gy moogt wel <rhyme label="a" type="f">beeven</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Was ’er Koning Iesus <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Die wil moet en kragten <rhyme label="a" type="f" corresp="#s11:l1">geven</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">En haar helpen uyt <rhyme label="b" type="m" corresp="#s11:l2">verdriet</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Al u haters moeten <rhyme label="c" type="f">schroomen</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Iesus is de hulp der <rhyme label="c" type="f" corresp="#s11:l5">vroomen</rhyme>,</l>
        <l id="s11:l7" met="4" type="+-">En zo de overwinning <rhyme label="d" type="m">wis</rhyme>,</l>
        <l id="s11:l8" met="4" type="+-">Al u stryden,, Al u <rhyme label="e" type="f">stryden</rhyme>,</l>
        <l id="s11:l9" met="4" type="+-">In de kragt van Christus <rhyme label="d" type="m" corresp="#s11:l7">is</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Gy zult nog eens <rhyme label="a" type="f">Triompheeren</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Dat en kan u niet <rhyme label="b" type="m">ontgaan</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Want nu Iesus, uwen <rhyme label="a" type="f" corresp="#s12:l1">Heeren</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Heeft Gods regt, en wet <rhyme label="b" type="m" corresp="#s12:l2">voldaan</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Gy zult nog eens <rhyme label="c" type="f">zegenpraalen</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">In de ruyme <rhyme label="c" type="f" corresp="#s12:l5">Hemelzaalen</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">Eeuwig tot zyn Lof en <rhyme label="d" type="m">Eer</rhyme>,</l>
        <l id="s12:l8" met="4" type="+-">Daar is ’t Heilig,, Daar is ’t <rhyme label="e" type="f">Veilig</rhyme>,</l>
        <l id="s12:l9" met="4" type="+-">Amen, Amen, ’t zy zoo <rhyme label="d" type="m" corresp="#s12:l7">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
