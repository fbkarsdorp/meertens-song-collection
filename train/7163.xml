  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O mensche wilt <rhyme label="a" type="f">studeren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Studeren ia <rhyme label="a" type="f" corresp="#s1:l1">studeren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Al aen den boom des <rhyme label="a" type="f" corresp="#s1:l1">cruycen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Aenmerckt wie daer aen <rhyme label="b" type="m">hangt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Hij hinck daer om te <rhyme label="a" type="f" corresp="#s1:l1">leeren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Den wech der <rhyme label="a" type="f" corresp="#s1:l1">salicheyden</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hij hinck daer om te <rhyme label="a" type="f" corresp="#s1:l1">leeren</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Wt also vierighen <rhyme label="b" type="m" corresp="#s1:l4">brant</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Peyst op hem al v leuen <rhyme label="b" type="m" corresp="#s1:l4">lanc</rhyme></l>
        <l id="s1:l10" met="4" type="-+">Ghij moghet hem wel weten <rhyme label="b" type="m" corresp="#s1:l4">danck</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Want hijt v wt minnen <rhyme label="b" type="m" corresp="#s1:l4">schanck</rhyme></l>
        <l id="s1:l12" met="4" type="-+">Peyst op hem al v leuen <rhyme label="b" type="m" corresp="#s1:l4">lanc</rhyme></l>
        <l id="s1:l13" met="4" type="-+">Ghij moghet hem wel weten <rhyme label="b" type="m" corresp="#s1:l4">danck</rhyme></l>
        <l id="s1:l14" met="4" type="-+">Want hijt v wt minnen <rhyme label="b" type="m" corresp="#s1:l4">schanck</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hij heeft v daer <rhyme label="a" type="f">gesconcken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ghij meucht wel worden <rhyme label="a" type="f" corresp="#s2:l1">droncken</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Hij heeft v daer <rhyme label="a" type="f" corresp="#s2:l1">geschoncken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Al van sijns hertsen <rhyme label="b" type="m">bloet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Sijn liefden es hem <rhyme label="a" type="f" corresp="#s2:l1">ontfoncken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">En es nederwaerts <rhyme label="a" type="f" corresp="#s2:l1">gesoncken</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Sijn liefden es hem <rhyme label="a" type="f" corresp="#s2:l1">ontfoncken</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">In alsoo grooten <rhyme label="b" type="m" corresp="#s2:l4">ootmoet</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Hij es soo wtermaten <rhyme label="b" type="m" corresp="#s2:l4">goet</rhyme></l>
        <l id="s2:l10" met="4" type="-+">Het is zyn minne diet hem <rhyme label="b" type="m" corresp="#s2:l4">doet</rhyme></l>
        <l id="s2:l11" met="4" type="+-">Hier op soo draeg ick mijnen <rhyme label="b" type="m" corresp="#s2:l4">moet</rhyme>.</l>
        <l id="s2:l12" met="4" type="-+">Hij es soo wtermaten <rhyme label="b" type="m" corresp="#s2:l4">goet</rhyme></l>
        <l id="s2:l13" met="4" type="-+">Het is zyn minne diet hem <rhyme label="b" type="m" corresp="#s2:l4">doet</rhyme></l>
        <l id="s2:l14" met="4" type="-+">Hier op soo draeg ick mijnen <rhyme label="b" type="m" corresp="#s2:l4">moet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe mocht hij meer <rhyme label="a" type="f">gelijden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Om ons van sonden te <rhyme label="a" type="f" corresp="#s3:l1">vrijden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Hoe mocht hij meer <rhyme label="a" type="f" corresp="#s3:l1">gelijden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dan hij wt minnen <rhyme label="b" type="m">geleec</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Hij heeft hem laeten <rhyme label="a" type="f" corresp="#s3:l1">besnijden</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In sijnen ionghen <rhyme label="a" type="f" corresp="#s3:l1">tyden</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Hy heeft hem laten <rhyme label="a" type="f" corresp="#s3:l1">besnijden</rhyme></l>
        <l id="s3:l8" met="3" type="-+">In syn ionghe <rhyme label="b" type="m" corresp="#s3:l4">leden</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Hij is soo wter maten <rhyme label="b" type="m" corresp="#s3:l4">teer</rhyme></l>
        <l id="s3:l10" met="4" type="-+">Sijn ledekens deden hem soo <rhyme label="b" type="m" corresp="#s3:l4">seer</rhyme></l>
        <l id="s3:l11" met="4" type="+-">Nochtans soo woude hij lijden <rhyme label="b" type="m" corresp="#s3:l4">meer</rhyme>.</l>
        <l id="s3:l12" met="4" type="-+">Hij is soo wter maten <rhyme label="b" type="m" corresp="#s3:l4">teer</rhyme></l>
        <l id="s3:l13" met="4" type="-+">Sijn ledekens deden hem soo <rhyme label="b" type="m" corresp="#s3:l4">seer</rhyme></l>
        <l id="s3:l14" met="4" type="-+">Nochtans soo woude hij lijden <rhyme label="b" type="m" corresp="#s3:l4">meer</rhyme>.</l>
