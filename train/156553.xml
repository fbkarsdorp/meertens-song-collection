  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">
          <rhyme label="a" type="m">Gierigaard</rhyme>
        </l>
        <l id="s1:l2" met="3" type="-+">Die, in u snood <rhyme label="b" type="f">bedryven</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Wenst te <rhyme label="b" type="f" corresp="#s1:l2">blyven</rhyme></l>
        <l id="s1:l4" met="2" type="+-">By u <rhyme label="b" type="f" corresp="#s1:l2">schyven</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Uw soo <rhyme label="a" type="m" corresp="#s1:l1">waard</rhyme>:</l>
        <l id="s1:l6" met="2" type="+-">Segd wat <rhyme label="c" type="m">soet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Of vreugde kan u <rhyme label="d" type="f">geven</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Dus te <rhyme label="d" type="f" corresp="#s1:l7">leven</rhyme></l>
        <l id="s1:l9" met="2" type="+-">En te <rhyme label="d" type="f" corresp="#s1:l7">streven</rhyme></l>
        <l id="s1:l10" met="2" type="+-">Na het <rhyme label="c" type="m" corresp="#s1:l6">goed</rhyme>?</l>
        <l id="s1:l11" met="2" type="+-">Soekt gy <rhyme label="e" type="m">vreugd</rhyme>:</l>
        <l id="s1:l12" met="3" type="-+">Wild uwe   Goudsugt <rhyme label="f" type="f">staken</rhyme></l>
        <l id="s1:l13" met="2" type="+-">En steeds <rhyme label="f" type="f" corresp="#s1:l12">haken</rhyme>,</l>
        <l id="s1:l14" met="2" type="+-">Ja selfs <rhyme label="f" type="f" corresp="#s1:l12">blaken</rhyme></l>
        <l id="s1:l15" met="2" type="+-">Om de <rhyme label="e" type="m" corresp="#s1:l11">deugd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Wild met <rhyme label="a" type="m">vlyd</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Voortaan die schat <rhyme label="b" type="f">begeren</rhyme></l>
        <l id="s2:l3" met="2" type="+-">Die noit <rhyme label="b" type="f" corresp="#s2:l2">keren</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Nog <rhyme label="b" type="f" corresp="#s2:l2">verteren</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Kan door <rhyme label="a" type="m" corresp="#s2:l1">tijd</rhyme>.</l>
        <l id="s2:l6" met="2" type="+-">Maar wat <rhyme label="c" type="m">soekt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Gy schatten te <rhyme label="d" type="f">vergaren</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Door u <rhyme label="d" type="f" corresp="#s2:l7">sparen</rhyme></l>
        <l id="s2:l9" met="2" type="+-">En <rhyme label="d" type="f" corresp="#s2:l7">bewaren</rhyme></l>
        <l id="s2:l10" met="2" type="+-">Dat elk <rhyme label="c" type="m" corresp="#s2:l6">vloekt</rhyme>!</l>
        <l id="s2:l11" met="2" type="+-">Hy is <rhyme label="e" type="m">Rijk</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Die sig op aard kan <rhyme label="f" type="f">voegen</rhyme></l>
        <l id="s2:l13" met="2" type="+-">Met <rhyme label="f" type="f" corresp="#s2:l12">genoegen</rhyme>,</l>
        <l id="s2:l14" met="2" type="+-">Sonder <rhyme label="f" type="f" corresp="#s2:l12">wroegen</rhyme></l>
        <l id="s2:l15" met="2" type="+-">Om het <rhyme label="e" type="m" corresp="#s2:l11">slijk</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Het <rhyme label="a" type="m">gemoet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Moet buigen voor de <rhyme label="b" type="f">Reden</rhyme></l>
        <l id="s3:l3" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s3:l2">vertreden</rhyme></l>
        <l id="s3:l4" met="2" type="+-">
          <rhyme label="b" type="f" corresp="#s3:l2">D'ydelheden</rhyme>
        </l>
        <l id="s3:l5" met="2" type="+-">Met de <rhyme label="a" type="m" corresp="#s3:l1">voet</rhyme>.</l>
        <l id="s3:l6" met="2" type="+-">Maar de <rhyme label="c" type="m">vrek</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Verslyt sijn tijd met <rhyme label="d" type="f">slaven</rhyme></l>
        <l id="s3:l8" met="2" type="+-">En met <rhyme label="d" type="f" corresp="#s3:l7">draven</rhyme>,</l>
        <l id="s3:l9" met="2" type="+-">Ja, met <rhyme label="d" type="f" corresp="#s3:l7">graven</rhyme></l>
        <l id="s3:l10" met="2" type="+-">In de <rhyme label="c" type="m" corresp="#s3:l6">Drek</rhyme>.</l>
        <l id="s3:l11" met="2" type="+-">Want de <rhyme label="e" type="m">schat</rhyme></l>
        <l id="s3:l12" met="3" type="-+">Die regt tot rust kan <rhyme label="f" type="f">strekken</rhyme></l>
        <l id="s3:l13" met="2" type="+-">Werd van <rhyme label="f" type="f" corresp="#s3:l12">vrekken</rhyme></l>
        <l id="s3:l14" met="2" type="+-">Nog van <rhyme label="f" type="f" corresp="#s3:l12">gekken</rhyme></l>
        <l id="s3:l15" met="2" type="+-">Noit <rhyme label="e" type="m" corresp="#s3:l11">bevat</rhyme>.</l>
      </lg>
    </lg>
  </text>
