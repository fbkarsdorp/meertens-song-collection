  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Het is de oude <rhyme label="a" type="m">les</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Draag zorg voor u <rhyme label="b" type="f">kinderen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De droes breekt hun de <rhyme label="c" type="m">nek</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die hier in zoude <rhyme label="b" type="f" corresp="#s1:l2">hinderen</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Daarom heb ik van stonden <rhyme label="d" type="m">aan</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Myn best daar toe <rhyme label="e" type="m">gedaan</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Soo dra myn kroost bekwaamheid <rhyme label="f" type="m">had</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Ter Schoole te doen <rhyme label="e" type="m" corresp="#s1:l6">gaan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En nooit heb ik <rhyme label="a" type="m">geweest</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die geen die <rhyme label="b" type="f">krietizeerden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als ik was <rhyme label="c" type="m">overtuygt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als dat zy maar wat <rhyme label="b" type="f" corresp="#s2:l2">leerden</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Maar de ondervinding die leert <rhyme label="d" type="m">myn</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dat 't meer om duiten <rhyme label="e" type="m">is</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Voornamentlyk by die <rhyme label="f" type="m">matres</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Want zy gelykt een <rhyme label="e" type="m" corresp="#s2:l6">klis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Aan het geld is vals <rhyme label="a" type="m">gehegt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Bewys dat zyn de <rhyme label="b" type="f">daden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Want zy voorzigtig <rhyme label="c" type="m">is</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van niet te <rhyme label="b" type="f" corresp="#s3:l2">overladen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">De Kinders schoon dat zy van <rhyme label="d" type="m">dorst</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Als overrompelt <rhyme label="e" type="m">zyn</rhyme>;</l>
        <l id="s3:l7" met="4" type="-+">Zoo denkt zy maar al zeid zy 't <rhyme label="f" type="m">niet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">De duyten die zyn <rhyme label="e" type="m" corresp="#s3:l6">myn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dit waar nog <rhyme label="a" type="m">niemendal</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Als aârs niet aan <rhyme label="b" type="f">mankeerden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Maar schoon men by <rhyme label="c" type="m">geval</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Een stuyver eens <rhyme label="b" type="f" corresp="#s4:l2">vereerden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En dat met een beding daar <rhyme label="d" type="m">by</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat zy by de <rhyme label="e" type="m">matres</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">'t Geen zy verkoopt, en by geen <rhyme label="f" type="m">aâr</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Neemt tot een <rhyme label="e" type="m" corresp="#s4:l6">lavenes</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De kinders zyn <rhyme label="a" type="m">verblyd</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Zy geven haar de <rhyme label="b" type="f">duyten</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Maar op de <rhyme label="c" type="m">waafeltjes</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Daar kunnen zy op <rhyme label="b" type="f" corresp="#s5:l2">fluyten</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Want de matres die liever <rhyme label="d" type="m">houd</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Als dat zy haar die <rhyme label="e" type="m">geeft</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Zy denkt die niet zyn voordeel <rhyme label="f" type="m">zoekt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Is niet waard dat hy <rhyme label="e" type="m" corresp="#s5:l6">leeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Daarom wie dat gy <rhyme label="a" type="m">zyt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wagt uw voor de <rhyme label="b" type="f">matresse</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Want zy bedriegen <rhyme label="c" type="m">uw</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Al waart gy met u <rhyme label="b" type="f" corresp="#s6:l2">zessen</rhyme>;</l>
        <l id="s6:l5" met="4" type="-+">Daarom neem ik nu tot <rhyme label="d" type="m">besluit</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Myn kinders niet te <rhyme label="e" type="m">doen</rhyme>:</l>
        <l id="s6:l7" met="4" type="-+">Als by die ik weet, zy zyn <rhyme label="f" type="m">besteet</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">By luyden van <rhyme label="e" type="m" corresp="#s6:l6">fatzoen</rhyme>.</l>
      </lg>
    </lg>
  </text>
