    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>C. J. Wits</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy alle die met <rhyme label="a" type="m">heyligh-schijn</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Soeckt over-al te zijn <rhyme label="b" type="f">ghepresen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">In 't herte voedt een snood' <rhyme label="a" type="m" corresp="#s1:l1">fenijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ey ! wilt tot nut dees' verssen <rhyme label="b" type="f" corresp="#s1:l2">lesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Of schoon ghy van des Heeren <rhyme label="a" type="m">Woordt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Wel deftigh spreeckt, kondt and're <rhyme label="b" type="f">leeren</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">'t Is tot u schand', 't vleesch u <rhyme label="a" type="m" corresp="#s2:l1">bekoort</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ghy laet u Slaefsen hals <rhyme label="b" type="f" corresp="#s2:l2">verheeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Of schoon ghy al u selven <rhyme label="a" type="m">vleyt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Kondt u ghewis in slape <rhyme label="b" type="f">wieghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En sacht in 't Bed der sonden <rhyme label="a" type="m" corresp="#s3:l1">leyt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">U selfs, en and're kondt <rhyme label="b" type="f" corresp="#s3:l2">bedrieghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Godt en bedrieght ghy <rhyme label="a" type="m">nimmermeer</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">Dus wilt u weghen wel <rhyme label="b" type="f">door-gronden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Och ! kent u selfs. Want voor den <rhyme label="a" type="m" corresp="#s4:l1">Heer</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Zijt ghy, o ! Mensch, te licht <rhyme label="b" type="f" corresp="#s4:l2">bevonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ey ! steunt doch op een Riedt-stock <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Of ghy sult haest te gronde <rhyme label="b" type="f">vallen</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Ghy soeckt wat groots, ghy vindt <rhyme label="a" type="m" corresp="#s5:l1">verdriet</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Schand' en onrust. Gheen vreed' met <rhyme label="b" type="f" corresp="#s5:l2">allen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Of schoon ghy met <rhyme label="a" type="m">behendigheyt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Met deuchdens-schijn kondt 't quaet <rhyme label="b" type="f">verschuylen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">'t Is voor een tijdt: 't gheen binnen <rhyme label="a" type="m" corresp="#s6:l1">leyt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Breeckt somtijdts uyt als <rhyme label="b" type="f" corresp="#s6:l2">etter-buylen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Schoon yemandt dit met walgingh' <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En komt uyt gunst 't ghebreck u <rhyme label="b" type="f">toonen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">U herts fenijn ghy op hem <rhyme label="a" type="m" corresp="#s7:l1">schiet</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Gaet hem met smaet en laster <rhyme label="b" type="f" corresp="#s7:l2">loonen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">'t Vermomt bedroch komt in het <rhyme label="a" type="m">licht</rhyme>.</l>
        <l id="s8:l2" met="4" type="-+">'t Is tijdt om 't quaedt met quaedt te <rhyme label="b" type="f">decken</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Ghy faem-rooft, lieght: en veel <rhyme label="a" type="m" corresp="#s8:l1">onsticht</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Gaet meer, en meer u Ziel <rhyme label="b" type="f" corresp="#s8:l2">bevlecken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dus swelt door hoovaerdy u <rhyme label="a" type="m">Geest</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">De Reden slaept: Godt is <rhyme label="b" type="f">vergeten</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Daer door ghy Godt noch Menschen <rhyme label="a" type="m" corresp="#s9:l1">vreest</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Den Doodt-steeck gheeft aen u <rhyme label="b" type="f" corresp="#s9:l2">Geweten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Quaedt-doen baert straf, ghy moeter <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Gods strenghe wraeck is op u <rhyme label="b" type="f">hielen</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">d'Heyloose Doodt is boosen <rhyme label="a" type="m" corresp="#s10:l1">straf</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En Helsche pijn gheveynsde <rhyme label="b" type="f" corresp="#s10:l2">Zielen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Misbruyckt nu Gods ghedult niet <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">'t Is over-tijdt om op te <rhyme label="b" type="f">waecken</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Ghy, aerd' en stof, vreest 's Hemels <rhyme label="a" type="m" corresp="#s11:l1">Heer</rhyme>:</l>
        <l id="s11:l4" met="4" type="-+">Eer ghy sijn gramschap komt te <rhyme label="b" type="f" corresp="#s11:l2">smaecken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Mijn Ziel ! och Ziel ! vreest voor dit <rhyme label="a" type="m">quaedt</rhyme>.</l>
        <l id="s12:l2" met="4" type="-+">Bidt Godt dat hy u staegh wil <rhyme label="b" type="f">stercken</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Op dat in u dit Duyvels <rhyme label="a" type="m" corresp="#s12:l1">zaedt</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Niet voort en brenght vrucht van qua <rhyme label="b" type="f" corresp="#s12:l2">wercken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
