  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LEst sat ick op het <rhyme label="a" type="m">Velt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En sagh den Oever <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En blaeuwe Stroompjes van het <rhyme label="a" type="m" corresp="#s1:l1">schelt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">De Son die was in 't <rhyme label="b" type="m" corresp="#s1:l2">ondergaen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En by de <rhyme label="c" type="m">Noorder-bron</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Ick mijn droeve klacht <rhyme label="c" type="m" corresp="#s1:l5">begon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'t Was een Zuyd'-ooste <rhyme label="a" type="m">windt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die heb ick <rhyme label="b" type="m">aen-gebeen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Gelijck een slecht onnosel <rhyme label="a" type="m" corresp="#s2:l1">kindt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Als datse eer de Son weer <rhyme label="b" type="m" corresp="#s2:l2">scheen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Mijn minne-deuntjes <rhyme label="c" type="m">wouw</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Brengen aen mijn schoon' <rhyme label="c" type="m" corresp="#s2:l5">Juffrouw</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die in haer droompjes <rhyme label="a" type="m">leydt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Bedompelt, en <rhyme label="b" type="m">bedruckt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Van d' overlang' af <rhyme label="a" type="m" corresp="#s3:l1">wesentheyt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">En treurend'lijcke vreughjes <rhyme label="b" type="m" corresp="#s3:l2">pluckt</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Verlangend' uyr en <rhyme label="c" type="m">dagh</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Wenst het anders wesen <rhyme label="c" type="m" corresp="#s3:l5">magh'</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ach! schoonste <rhyme label="a" type="m">Dianin</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met lichaem, en met <rhyme label="b" type="m">ziel</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Met liefden, en getrouwe <rhyme label="a" type="m" corresp="#s4:l1">min</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Ick neder voor u Altaer <rhyme label="b" type="m" corresp="#s4:l2">kniel</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En offer u mijn <rhyme label="c" type="m">bloedt</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Op de knaging' mijns <rhyme label="c" type="m" corresp="#s4:l5">gemoedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dus sit ick op dees <rhyme label="a" type="m">Noort</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Aen 't hangen van den <rhyme label="b" type="m">Bergh</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En op dat ghy mijn klachjes <rhyme label="a" type="m" corresp="#s5:l1">hoort</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Ick winden ende waters <rhyme label="b" type="m" corresp="#s5:l2">vergh</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Als dat haer golfjens <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Doen mijn Lief mijn klacht <rhyme label="c" type="m" corresp="#s5:l5">verstaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ach! wist mijn <rhyme label="a" type="m">Engelin</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Hoe dat mijn jeudigh <rhyme label="b" type="m">bloedt</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Ick door de Min ontsteken <rhyme label="a" type="m" corresp="#s6:l1">vin</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Gelijck een heete <rhyme label="b" type="m" corresp="#s6:l2">zwavel-vloedt</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Van d' hooge Bergen <rhyme label="c" type="m">bruyst</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Oock mijn bloedt in d' Aders <rhyme label="c" type="m" corresp="#s6:l5">pruyst</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En dat ick uyr en <rhyme label="a" type="m">stont</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Soo langh mijn Adem <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">U zweer: mijn liefd' en trou <rhyme label="a" type="m" corresp="#s7:l1">verbondt</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">En sal altijt voor <rhyme label="b" type="m" corresp="#s7:l2">Dageraedt</rhyme></l>
        <l id="s7:l5" met="3" type="-+">In 't hert u offer <rhyme label="c" type="m">doen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Tot ons af-zijn vreugt sal <rhyme label="c" type="m" corresp="#s7:l5">voen</rhyme>.</l>
      </lg>
    </lg>
  </text>
