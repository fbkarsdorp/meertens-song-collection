  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WEe my, die soo lanck moet <rhyme label="a" type="f">branden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ende liggen in dees <rhyme label="a" type="f" corresp="#s1:l1">banden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Sonder dat my iemant <rhyme label="b" type="m">helpt</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Wie ruckt my doch uyt dees <rhyme label="c" type="f">pynen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En doet my voor Godt <rhyme label="c" type="f" corresp="#s1:l4">verschynen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Wie ist, die myn klachten <rhyme label="b" type="m" corresp="#s1:l3">stelpt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ah! hoort myn ellendigh <rhyme label="a" type="f">kermen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Wilt my in dees smert <rhyme label="a" type="f" corresp="#s2:l1">ontfermen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Helpt my doch in desen <rhyme label="b" type="m">noodt</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Helpt doch Sone, helpt uw' <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Wie kan wesen aen u <rhyme label="c" type="f" corresp="#s2:l4">nader</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Myn tormenten syn soo <rhyme label="b" type="m" corresp="#s2:l3">groodt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Van het vier ben ick <rhyme label="a" type="f">verslonden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En t'is maer om klyne <rhyme label="a" type="f" corresp="#s3:l1">sonden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Doch t'is Godts <rhyme label="b" type="m">Rechtveerdigheydt</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Daerom slaet op my uw' <rhyme label="c" type="f">oogen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Noch en wilt myn smert <rhyme label="c" type="f" corresp="#s3:l4">gedoogen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Ey, thoont uw' <rhyme label="b" type="m" corresp="#s3:l3">bermhertigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
