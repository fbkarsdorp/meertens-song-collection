  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">TRouwste Vriend, hier is myn <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dat beveel ik uwer <rhyme label="b" type="f">Liefde</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Die het <rhyme label="b" type="f" corresp="#s1:l2">griefde</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Houw het u steeds <rhyme label="c" type="m">onbevlekt</rhyme>;</l>
        <l id="s1:l5" met="2" type="+-"><rhyme label="c" type="m" corresp="#s1:l4">Opgewekt</rhyme>;</l>
        <l id="s1:l6" met="4" type="+-">Laaten al myn <rhyme label="d" type="f">ingewanden</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Jesus, in uw Liefde <rhyme label="d" type="f" corresp="#s1:l6">branden</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Want die is my nu <rhyme label="c" type="m" corresp="#s1:l4">ontdekt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Liefde! bind myn hert en <rhyme label="a" type="m">zin</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Aan uw Jok, dat schoon' en <rhyme label="b" type="f">zagte</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">Voor 't <rhyme label="b" type="f" corresp="#s2:l2">Geslachte</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dat zich kinderlyk u <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Willig <rhyme label="c" type="m" corresp="#s2:l4">leeft</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En zich door uw Geest laat <rhyme label="d" type="f">leiden</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Niets als zeegen en <rhyme label="d" type="f" corresp="#s2:l6">verblyden</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Stroomt 'er, daar men Jesus <rhyme label="c" type="m" corresp="#s2:l4">heeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Neem myn herte wel in <rhyme label="a" type="m">acht</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Wees uw Kindje tot een <rhyme label="b" type="f">Moeder</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Trouwe <rhyme label="b" type="f" corresp="#s3:l2">Hoeder</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Myne ziele is ook <rhyme label="c" type="m">dyn'</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Maak ze <rhyme label="c" type="m" corresp="#s3:l4">rein</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En van binnen sterk en <rhyme label="d" type="f">krachtig</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Moedig in uw werk en <rhyme label="d" type="f" corresp="#s3:l6">machtig</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Laat my u geheiligt <rhyme label="c" type="m" corresp="#s3:l4">zyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
