  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Zoo laat Gij, Heer, uw' <rhyme label="a" type="m">knecht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Naar t woord, hem <rhyme label="a" type="m" corresp="#s1:l1">toegezegd</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Thans henen gaan in <rhyme label="b" type="f">vrede</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Nu hij uw <rhyme label="c" type="m">zaligheid</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Zoo lang door hem <rhyme label="c" type="m" corresp="#s1:l4">verbeid</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gezien heeft, op zijn <rhyme label="b" type="f" corresp="#s1:l3">bede</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een licht, zoo groot zoo <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gedaald van 's hemels <rhyme label="a" type="m" corresp="#s2:l1">troon</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Straalt volk bij volk in <rhyme label="b" type="f">d'oogen</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Terwijl 't het blind <rhyme label="c" type="m">gezicht</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Van 't heidendom <rhyme label="c" type="m" corresp="#s2:l4">verlicht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En Isrel zal <rhyme label="b" type="f" corresp="#s2:l3">verhoogen</rhyme>.</l>
      </lg>
    </lg>
  </text>
