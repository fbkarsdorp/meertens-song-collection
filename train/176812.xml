    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Laet ons te samen <rhyme label="a" type="f">loven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Den Vader van hier <rhyme label="a" type="f" corresp="#s1:l1">boven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die ons sijn eenighen lieven <rhyme label="b" type="m">Soon</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ghesonden heeft uyt ‘s Hemels <rhyme label="b" type="m" corresp="#s1:l3">Throon</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Door liefde <rhyme label="c" type="m">groot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En heeft hem om ons <rhyme label="a" type="f">zonden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In noot alleen <rhyme label="a" type="f" corresp="#s2:l1">ghevonden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En heeft den Pars <rhyme label="b" type="m">ghetreen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Oock noch voor sijn Vyandt <rhyme label="b" type="m" corresp="#s2:l3">ghebeen</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">O liefde <rhyme label="c" type="m">groot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy is aen ‘t Kruys <rhyme label="a" type="f">gheslaghen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Daer nae in ‘t Graf <rhyme label="a" type="f" corresp="#s3:l1">ghedraghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Als een recht onnoosel <rhyme label="b" type="m">Lam</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat onse zonden op hem <rhyme label="b" type="m" corresp="#s3:l3">nam</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">O liefde <rhyme label="c" type="m">groot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy is weder <rhyme label="a" type="f">verresen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Des laet ons vrolijck <rhyme label="a" type="f" corresp="#s4:l1">wesen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De Doodt heeft hy al <rhyme label="b" type="m">verslonden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Voor ons het leven <rhyme label="b" type="m" corresp="#s4:l3">ghevonden</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">O liefde <rhyme label="c" type="m">groot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghelijck het hooft <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Heerlijck is <rhyme label="a" type="f" corresp="#s5:l1">op-gheresen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Soo sullen sijn Leden hier <rhyme label="b" type="m">naer</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Oock heerlijck verrijsen <rhyme label="b" type="m" corresp="#s5:l3">allegaer</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">O liefde <rhyme label="c" type="m">groot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wat blijtschap sal daer <rhyme label="a" type="f">wesen</rhyme>?</l>
        <l id="s6:l2" met="3" type="-+">By Godt Vader <rhyme label="a" type="f" corresp="#s6:l1">ghepresen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die hy den gheenen heeft <rhyme label="b" type="m">bereyt</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Door sijnen Soon van <rhyme label="b" type="m" corresp="#s6:l3">eeuwigheyt</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">O liefde <rhyme label="c" type="m">groot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Laet ons met stemmen <rhyme label="a" type="f">reyne</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Loven den Heer <rhyme label="a" type="f" corresp="#s7:l1">alleyne</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die ons dit al verworven <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dies nu niet meer in zonden <rhyme label="b" type="m" corresp="#s7:l3">leeft</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Uyt liefden <rhyme label="c" type="m">groot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Lof, eer, en prijs <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zy onsen Godt <rhyme label="a" type="f" corresp="#s8:l1">ghegheven</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Door sijnen Soon en Heyl’ghen <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die ons vertroost in lijden <rhyme label="b" type="m" corresp="#s8:l3">meest</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">O liefde <rhyme label="c" type="m">groot</rhyme>.</l>
      </lg>
    </lg>
  </text>
