  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ik heb den gantsche <rhyme label="a" type="m">nagt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Myn zinnen laaten <rhyme label="b" type="f">dwaalen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Aan zoo een holle <rhyme label="c" type="m">boom</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Veel vreugde zonder <rhyme label="c" type="m" corresp="#s1:l3">schroom</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Myn dagt ik lag en <rhyme label="a" type="m">sliep</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">In zoo een vreemde <rhyme label="b" type="f">landen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En dat in <rhyme label="c" type="m">eenzaamheid</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">â€™t Duurde zoo een korte <rhyme label="c" type="m" corresp="#s2:l3">tyd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Myn dunkt ik zag van <rhyme label="a" type="m">ver</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Een helder schip <rhyme label="b" type="f">laveeren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Zoo cierlyk <rhyme label="c" type="m">gebouwt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Geheel van <rhyme label="c" type="m" corresp="#s3:l3">Ebbenhoudt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De vlag was rood <rhyme label="a" type="m">satyn</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sneeuw witte zyde <rhyme label="b" type="f">zeylen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Twee ankertjes ten <rhyme label="c" type="m">toon</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Van Goud en Zilver <rhyme label="c" type="m" corresp="#s4:l3">schoon</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Veel Parelen <rhyme label="a" type="m">Diamanten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En weinig der <rhyme label="b" type="f">gezanten</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daar was alles <rhyme label="c" type="m">abondant</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Nooit schoonder schip <rhyme label="c" type="m" corresp="#s5:l3">gestrant</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De stuurman van het <rhyme label="a" type="m">schip</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Deed anders niet als <rhyme label="b" type="f">peylen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Om dat hy was <rhyme label="c" type="m">belaan</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat zyn schip zou <rhyme label="c" type="m" corresp="#s6:l3">vergaan</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De Constapel van het <rhyme label="a" type="m">schip</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Deed zyn courasie <rhyme label="b" type="f">blyken</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Al door de felle <rhyme label="c" type="m">gram</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Spoog niet als vuur en <rhyme label="c" type="m" corresp="#s7:l3">vlam</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wanneer de heldere <rhyme label="a" type="m">Zon</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Moest van zyn straalen <rhyme label="b" type="f">wyken</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Al door de felle <rhyme label="c" type="m">vlam</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Haar helderen glans <rhyme label="c" type="m" corresp="#s8:l3">benam</rhyme>.</l>
      </lg>
    </lg>
  </text>
