      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrick Jansz. Prins</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WEl mijn lieve! ten <rhyme label="a" type="f">gerieve</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van bevel en uwe <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ben ick grage my te <rhyme label="c" type="f">drage</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Vroom, en vrolijck, vroed en <rhyme label="b" type="m" corresp="#s1:l2">stil</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maer m'en poogen, Laet het <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Der genaden-rijcke <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Soo verstercken, En <rhyme label="c" type="f">bewercken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dat ick wandel <rhyme label="b" type="m" corresp="#s2:l2">onbevreest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ey! m'en Schoone! Kom <rhyme label="a" type="f">betoone</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Dat je vliedt gelijck 'en <rhyme label="b" type="m">Rhee</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Als de Herten Sonder <rhyme label="c" type="f">smerten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Op der <rhyme label="b" type="m" corresp="#s3:l2">speceryen-stee</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Woonje boven, In de <rhyme label="a" type="f">Hoven</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Van u Hemels <rhyme label="b" type="m">heerlijckheyt</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Stort de gaven Die me <rhyme label="c" type="f">draven</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Doen, na volle <rhyme label="b" type="m" corresp="#s4:l2">saligheyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Mijn gedachten, Sullen <rhyme label="a" type="f">wachten</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">En verlangen na de <rhyme label="b" type="m">dach</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Van het Oordeel, En het <rhyme label="c" type="f">voordeel</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Dat ick dan besitten <rhyme label="b" type="m" corresp="#s5:l2">mach</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dus m'en reden, In <rhyme label="a" type="f">ghebeden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Sluyt ick, als ick eerst <rhyme label="b" type="m">begost</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Heylich Heere! T'uwer <rhyme label="c" type="f">eere</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Geef me , dat ick hebbe <rhyme label="b" type="m" corresp="#s6:l2">most</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Vwe geven, Is m'en <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Waer ick ben, of my <rhyme label="b" type="m">verrep</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Vw' erbarmen, En <rhyme label="c" type="f">ontfarmen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Maken, dat ick adem <rhyme label="b" type="m" corresp="#s7:l2">schep</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ghy alleene Zijt de <rhyme label="a" type="f">geene</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Die d'er is mijn <rhyme label="b" type="m">toe-verlaet</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">Aen u hou ick; V vertrou <rhyme label="c" type="f">ick</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Heer, m'en Hoeder! hoe het <rhyme label="b" type="m" corresp="#s8:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Op u hoop ick; Naer u loop <rhyme label="a" type="f">ick</rhyme>;</l>
        <l id="s9:l2" met="4" type="+-">Tot u keer ick mijn <rhyme label="b" type="m">gemoedt</rhyme>;</l>
        <l id="s9:l3" met="4" type="+-">Met u hacht ick; Van u wacht <rhyme label="c" type="f">ick</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Aller Vromen hooghste <rhyme label="b" type="m" corresp="#s9:l2">goedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
