    <tags/>
    <melody>Een schip dat zonder roer moet zweven</melody>
  <author>Tannetge Kornelis Blok</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Maer wie begind op deser <rhyme label="a" type="f">Aerden</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Een dink dat die te boven <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">‘t Geen dat wy zien <rhyme label="a" type="f" corresp="#s1:l1">aenvaerden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Van haer die in den <rhyme label="b" type="m" corresp="#s1:l2">Echtenstaet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Haer zelven nu gaen <rhyme label="c" type="f">begeven</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Om met ‘er <rhyme label="d" type="m">daet</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Alle haer dagen lang te <rhyme label="c" type="f" corresp="#s1:l5">leven</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">In desen <rhyme label="d" type="m" corresp="#s1:l6">staet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wanneer den Schepper alle <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">In den beginne had <rhyme label="b" type="m">bereyd</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Als doen ging hy den mensche <rhyme label="a" type="f" corresp="#s2:l1">maken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Na zijn Beelde, zoo Moses <rhyme label="b" type="m" corresp="#s2:l2">zeyt</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Hy schiep een Man, ende een <rhyme label="c" type="f">Vrouwe</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En leyde haer <rhyme label="d" type="m">wijs</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">In eenen hof al om te <rhyme label="c" type="f" corresp="#s2:l5">bouwen</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Het <rhyme label="d" type="m" corresp="#s2:l6">Paradijs</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nog sprak den Schepper ende <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Al tot de Vrouwe en den <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Zijt vrugtbaer en wild u <rhyme label="a" type="f" corresp="#s3:l1">vermeeren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Alzoo dat men bemerken <rhyme label="b" type="m" corresp="#s3:l2">kan</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Wy bevinden aen dese <rhyme label="c" type="f">reden</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Dat God <rhyme label="d" type="m">gewis</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Den vinder en instelder <rhyme label="c" type="f" corresp="#s3:l5">mede</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Van ‘t Houwelijk <rhyme label="d" type="m" corresp="#s3:l6">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Laet ons dan ook aen dese <rhyme label="a" type="f">menschen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Die nu zijn in den Echt <rhyme label="b" type="m">getreen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Veel heyl: geluk en zegen <rhyme label="a" type="f" corresp="#s4:l1">wenschen</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Ia dat sy nu voortaen als <rhyme label="b" type="m" corresp="#s4:l2">een</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Mogen wesen door liefdens <rhyme label="c" type="f">banden</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Seer wel <rhyme label="d" type="m">vernoegt</rhyme>.</l>
        <l id="s4:l7" met="4" type="-+">Als waren zy door Gods <rhyme label="c" type="f" corresp="#s4:l5">handen</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">t’Samen <rhyme label="d" type="m" corresp="#s4:l6">gevoegt</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">‘k Wensche voor al dees nieuw <rhyme label="a" type="f">getrouden</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En haer begonnen <rhyme label="b" type="m">Egtenstaet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat Godes vrede zal <rhyme label="a" type="f" corresp="#s5:l1">behouden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Die ons verstand te boven <rhyme label="b" type="m" corresp="#s5:l2">gaet</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">En haer herten en zinnen <rhyme label="c" type="f">mede</rhyme></l>
        <l id="s5:l6" met="2" type="-+">De <rhyme label="d" type="m">overhand</rhyme>;</l>
        <l id="s5:l7" met="4" type="-+">En zy altijd in liefde en <rhyme label="c" type="f" corresp="#s5:l5">vrede</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Blijven <rhyme label="d" type="m" corresp="#s5:l6">verpand</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sijt gy nu Bruidegom als <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Over uw’ Huysvrouwe <rhyme label="b" type="m">gesteld</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Geeft die als ‘t swakste vat haer <rhyme label="a" type="f" corresp="#s6:l1">eere</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Gebruykt geen heerschende <rhyme label="b" type="m" corresp="#s6:l2">geweld</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Maer wild gestadig by haer <rhyme label="c" type="f">woonen</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Met <rhyme label="d" type="m">wetendheid</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Weest om haer liefde te <rhyme label="c" type="f" corresp="#s6:l5">betoonen</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Altijd <rhyme label="d" type="m" corresp="#s6:l6">bereyd</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wie een goe Vrouwe heeft <rhyme label="a" type="f">verkregen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Die agtet als een weerdig <rhyme label="b" type="m">pad</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Sy sal hem dienen <rhyme label="a" type="f" corresp="#s7:l1">t’allerwegen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Als tot een hulpe en <rhyme label="b" type="m" corresp="#s7:l2">bystand</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Sy sal haer Huysgesin <rhyme label="c" type="f">vercieren</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Door haere <rhyme label="d" type="m">deugt</rhyme>.</l>
        <l id="s7:l7" met="4" type="-+">Ook zijn haer zeden en <rhyme label="c" type="f" corresp="#s7:l5">manieren</rhyme>,</l>
        <l id="s7:l8" met="2" type="-+">Haer Man een <rhyme label="d" type="m" corresp="#s7:l6">vreugt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer de Vrouwe zal in den <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Haer Man onderdanig <rhyme label="b" type="m">zijn</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Soo dat betaemd en wel <rhyme label="a" type="f" corresp="#s8:l1">regeeren</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Het Bhuysgesin tot liefde <rhyme label="b" type="m" corresp="#s8:l2">fijn</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Gelijk als die heijlige <rhyme label="c" type="f">Vrouwen</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Die Gods <rhyme label="d" type="m">gebod</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Hielden en haer hoop en <rhyme label="c" type="f" corresp="#s8:l5">betrouwen</rhyme>:</l>
        <l id="s8:l8" met="2" type="-+">Stelden op <rhyme label="d" type="m" corresp="#s8:l6">God</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">’k Wensche dat gy zo meugt <rhyme label="a" type="f">aenlegge</rhyme></l>
        <l id="s9:l2" met="4" type="-+">U doen en laten voor en <rhyme label="b" type="m">naer</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Dat men van u zal mogen <rhyme label="a" type="f" corresp="#s9:l1">zeggen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Het is een gantsch vereenigt <rhyme label="b" type="m" corresp="#s9:l2">Paer</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Ook om u wandelinge <rhyme label="c" type="f">merken</rhyme>;</l>
        <l id="s9:l6" met="2" type="-+">In korten <rhyme label="d" type="m">tijd</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Dat gy een ciersel van Gods <rhyme label="c" type="f" corresp="#s9:l5">Kerke</rhyme></l>
        <l id="s9:l8" met="2" type="-+">Geworden <rhyme label="d" type="m" corresp="#s9:l6">zijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De Heere wil ook t’allen <rhyme label="a" type="f">wegen</rhyme>:</l>
        <l id="s10:l2" met="4" type="-+">Over uw’ handen <rhyme label="b" type="m">arbeijd</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Rijkelijk strekken zijnen <rhyme label="a" type="f" corresp="#s10:l1">zegen</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">Want groot is zijn <rhyme label="b" type="m" corresp="#s10:l2">mildagheid</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Hy laet uw’ lank te samen <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s10:l6" met="2" type="-+">In veel <rhyme label="d" type="m">geneugt</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Hy wil u en ons namaels <rhyme label="c" type="f" corresp="#s10:l5">geven</rhyme>?</l>
        <l id="s10:l8" met="2" type="-+">Eeuwige <rhyme label="d" type="m" corresp="#s10:l6">vreugt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Oorlof ik moet aen deze <rhyme label="a" type="f">menschen</rhyme>:</l>
        <l id="s11:l2" met="4" type="-+">Aen dezen Bruidegom en <rhyme label="b" type="m">Bruid</rhyme>;</l>
        <l id="s11:l3" met="4" type="-+">Nog eens geluk en zegen <rhyme label="a" type="f" corresp="#s11:l1">wenschen</rhyme>;</l>
        <l id="s11:l4" met="4" type="-+">Eer dat ik dit gesank <rhyme label="b" type="m" corresp="#s11:l2">besluijt</rhyme>;</l>
        <l id="s11:l5" met="4" type="-+">Vaer wel dan zoete jonge <rhyme label="c" type="f">lieden</rhyme>,</l>
        <l id="s11:l6" met="2" type="-+">Een zalig <rhyme label="d" type="m">lot</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Geluk en heijl moet u <rhyme label="c" type="f" corresp="#s11:l5">geschieden</rhyme>;</l>
        <l id="s11:l8" met="2" type="-+">Wensch ik in ‘t <rhyme label="d" type="m" corresp="#s11:l6">slot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
