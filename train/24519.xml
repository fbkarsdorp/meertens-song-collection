<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24519</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="klaaglied" translation="lamentation">klaaglied</tag>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>Och lig dij nu en slaapt</melody>
    <categories>
      <category translation="emotions">emoties</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ic hoerden op eenre mergen <rhyme label="a" type="m">stont</rhyme></l>
        <l id="s1:l2" met="3" type="-+">dat liden seer <rhyme label="b" type="f">beclagen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">dat liden heeft myn hert <rhyme label="a" type="m" corresp="#s1:l1">doerwont</rhyme></l>
        <l id="s1:l4" met="3" type="-+">gebracht in groter <rhyme label="b" type="f" corresp="#s1:l2">vare</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Och liden gy syt alsoe <rhyme label="a" type="m">guet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">mer hatelic den <rhyme label="b" type="f">menschen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">mer wie bekent uwen edellen <rhyme label="a" type="m" corresp="#s2:l1">aert</rhyme></l>
        <l id="s2:l4" met="3" type="-+">die plech nae di te <rhyme label="b" type="f" corresp="#s2:l2">wonschen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Nv wil ic keren mynen <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">ende setten mi te <rhyme label="b" type="f">stryden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Och waer ic coem of waer ic <rhyme label="a" type="m" corresp="#s3:l1">byn</rhyme></l>
        <l id="s3:l4" met="3" type="-+">auer alle soe vyndic <rhyme label="b" type="f" corresp="#s3:l2">liden</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Nv lide wy nv lyden <rhyme label="a" type="m">wi</rhyme></l>
        <l id="s4:l2" met="3" type="-+">och dat moet ommer <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">die Jhesus in synen herten <rhyme label="a" type="m" corresp="#s4:l1">draget</rhyme></l>
        <l id="s4:l4" met="3" type="-+">die sal lidens wal <rhyme label="b" type="f" corresp="#s4:l2">genesen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Lyden is een edel <rhyme label="a" type="m">scat</rhyme></l>
        <l id="s5:l2" met="3" type="-+">diet wal gelic kan <rhyme label="b" type="f">dragen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">sy wanderen inder mynnen <rhyme label="a" type="m" corresp="#s5:l1">pat</rhyme></l>
        <l id="s5:l4" met="3" type="-+">die liden sonder <rhyme label="b" type="f" corresp="#s5:l2">clagen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Lyden is een bitter <rhyme label="a" type="m">woert</rhyme></l>
        <l id="s6:l2" met="3" type="-+">des werde ic wal <rhyme label="b" type="f">ontware</rhyme></l>
        <l id="s6:l3" met="3" type="-+">lyden heeft myn hert <rhyme label="a" type="m" corresp="#s6:l1">gescoert</rhyme></l>
        <l id="s6:l4" met="3" type="-+">gebracht in groter <rhyme label="b" type="f" corresp="#s6:l2">vare</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Nochtans en wil ic in mynen <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">dat liden niet <rhyme label="b" type="f">versmaeden</rhyme></l>
        <l id="s7:l3" met="3" type="-+">liden doncket my wesen <rhyme label="a" type="m" corresp="#s7:l1">guet</rhyme></l>
        <l id="s7:l4" met="3" type="-+">ic byns aldus <rhyme label="b" type="f" corresp="#s7:l2">beraeden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dat ic dat liden niet en <rhyme label="a" type="m">kan</rhyme></l>
        <l id="s8:l2" met="3" type="-+">dat moet ic nv <rhyme label="b" type="f">besueren</rhyme></l>
        <l id="s8:l3" met="3" type="-+">liden heeft myn hert <rhyme label="a" type="m" corresp="#s8:l1">gestuert</rhyme></l>
        <l id="s8:l4" met="3" type="-+">ghebracht in groten <rhyme label="b" type="f" corresp="#s8:l2">trueren</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Als ic dan meenden seker te <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s9:l2" met="3" type="-+">soe waert ic jerst <rhyme label="b" type="f">bedragen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">lyden is een <rhyme label="a" type="m" corresp="#s9:l1">medecyn</rhyme></l>
        <l id="s9:l4" met="3" type="-+">ick byn daer mede <rhyme label="b" type="f" corresp="#s9:l2">ontvlagen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Och liden wie geuet di die <rhyme label="a" type="m">macht</rhyme></l>
        <l id="s10:l2" met="3" type="-+">dattu bestrickest die <rhyme label="b" type="f">synnen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">ghi stuert der mennyge inden rechten <rhyme label="a" type="m" corresp="#s10:l1">pat</rhyme></l>
        <l id="s10:l4" met="3" type="-+">mit eren of mit <rhyme label="b" type="f" corresp="#s10:l2">scanden</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">O lyden wat heeftu <rhyme label="a" type="m">gedaen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">du beroeuest myne <rhyme label="b" type="f">synne</rhyme></l>
        <l id="s11:l3" met="3" type="-+">gy cost my alsoe mennygen <rhyme label="a" type="m" corresp="#s11:l1">traen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">gy quelt myn hert van <rhyme label="b" type="f" corresp="#s11:l2">bynnen</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wat vroude mach my nv geuen <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s12:l2" met="3" type="-+">als ic gedencke der  <rhyme label="b" type="f">quaelen</rhyme></l>
        <l id="s12:l3" met="3" type="-+">dat liden maket den mennygen <rhyme label="a" type="m" corresp="#s12:l1">vroet</rhyme></l>
        <l id="s12:l4" met="3" type="-+">die in genoechten <rhyme label="b" type="f" corresp="#s12:l2">dwaelen</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Dat liden sterket den krancken <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s13:l2" met="3" type="-+">het temmet die wilde <rhyme label="b" type="f">synne</rhyme></l>
        <l id="s13:l3" met="3" type="-+">het maket mennyge van bynnen <rhyme label="a" type="m" corresp="#s13:l1">vroet</rhyme></l>
        <l id="s13:l4" met="3" type="-+">het leert hem god te <rhyme label="b" type="f" corresp="#s13:l2">mynnen</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Och liden gy syt alsoe <rhyme label="a" type="m">guet</rhyme></l>
        <l id="s14:l2" met="3" type="-+">mer hatelic den <rhyme label="b" type="f">menschen</rhyme></l>
        <l id="s14:l3" met="3" type="-+">ende wie bekent uwen edelen <rhyme label="a" type="m" corresp="#s14:l1">aert</rhyme></l>
        <l id="s14:l4" met="3" type="-+">die plech nae v te <rhyme label="b" type="f" corresp="#s14:l2">wonschen</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Och liden gy syt alsoe <rhyme label="a" type="m">guet</rhyme></l>
        <l id="s15:l2" met="3" type="-+">ghi leert die tragen <rhyme label="b" type="f">stryden</rhyme></l>
        <l id="s15:l3" met="3" type="-+">ende gy bedwynget den jongen <rhyme label="a" type="m" corresp="#s15:l1">moet</rhyme></l>
        <l id="s15:l4" met="3" type="-+">dien gy beswaert mit <rhyme label="b" type="f" corresp="#s15:l2">liden</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Eer ic mit liden waert <rhyme label="a" type="m">beuaen</rhyme></l>
        <l id="s16:l2" met="3" type="-+">soe dwaelde ic wtten <rhyme label="b" type="f">pade</rhyme></l>
        <l id="s16:l3" met="3" type="-+">liden heeft my don <rhyme label="a" type="m" corresp="#s16:l1">verstaen</rhyme></l>
        <l id="s16:l4" met="3" type="-+">dat ic nv leue by <rhyme label="b" type="f" corresp="#s16:l2">rade</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Had ickes my wal te tyde <rhyme label="a" type="m">bedacht</rhyme></l>
        <l id="s17:l2" met="3" type="-+">ende my terechte <rhyme label="b" type="f">versonnen</rhyme></l>
        <l id="s17:l3" met="3" type="-+">ic hadde den stryt ten eynde <rhyme label="a" type="m" corresp="#s17:l1">gebracht</rhyme></l>
        <l id="s17:l4" met="3" type="-+">die ic nv jerst hebbe <rhyme label="b" type="f" corresp="#s17:l2">begonnen</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">God geue den liders gueden <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s18:l2" met="3" type="-+">ende van stryden <rhyme label="b" type="f">sege</rhyme></l>
        <l id="s18:l3" met="3" type="-+">dat hi doer druck ende <rhyme label="a" type="m" corresp="#s18:l1">wederspoet</rhyme></l>
        <l id="s18:l4" met="3" type="-+">moet comen ten ewigen <rhyme label="b" type="f" corresp="#s18:l2">leuen</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Soe mach hi ewige vroude <rhyme label="a" type="m">ontfaen</rhyme></l>
        <l id="s19:l2" met="3" type="-+">ende loen van synen <rhyme label="b" type="f">stryde</rhyme></l>
        <l id="s19:l3" met="3" type="-+">van liden dat hem heeft <rhyme label="a" type="m" corresp="#s19:l1">beuaen</rhyme></l>
        <l id="s19:l4" met="3" type="-+">ende benauwet aen allen <rhyme label="b" type="f" corresp="#s19:l2">syden</rhyme></l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Die ons dit lietdekyn heeft <rhyme label="a" type="m">gedicht</rhyme></l>
        <l id="s20:l2" met="3" type="-+">god sterken in synre <rhyme label="b" type="f">mynnen</rhyme></l>
        <l id="s20:l3" met="3" type="-+">dat hem syn liden meerde <rhyme label="a" type="m" corresp="#s20:l1">verlicht</rhyme></l>
        <l id="s20:l4" met="3" type="-+">dat hem beswaert van <rhyme label="b" type="f" corresp="#s20:l2">bynnen</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
