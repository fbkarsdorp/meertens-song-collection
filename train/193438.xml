  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Goeden Naem gy dient <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Uwen Lof moet zyn <rhyme label="b" type="m">verbreyd</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Zoete Vrugt van 't deugdzaem <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Spruyte van <rhyme label="b" type="m" corresp="#s1:l2">d'opregtigheyd</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Schoonste Ã‡iersel van de <rhyme label="c" type="f">Vrouwen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Kroone van den <rhyme label="d" type="m">Ouderdom</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Spoorslag die de Jeugd moet <rhyme label="c" type="f" corresp="#s1:l5">stouwen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Voorspraek die den Nyd maekt <rhyme label="d" type="m" corresp="#s1:l6">stom</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die een goeden Naem wil <rhyme label="a" type="f">erven</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Moet ia Waerheyd deugdzaem <rhyme label="b" type="m">zyn</rhyme></l>
        <l id="s2:l3" met="4" type="+-">'T veynzen kan hier niets <rhyme label="a" type="f" corresp="#s2:l1">verwerven</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Nog den deugdelyken <rhyme label="b" type="m" corresp="#s2:l2">Schyn</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Mits een Strooyken kan <rhyme label="c" type="f">ontdekken</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Werwaerts een Rivier haer <rhyme label="d" type="m">wend</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Eerst of lest de valsche <rhyme label="c" type="f" corresp="#s2:l5">trekken</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Van de Schyn-deugd zyn <rhyme label="d" type="m" corresp="#s2:l6">gekent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Schyn-deugd zal het al <rhyme label="a" type="f">verbloemen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Vrekheyd heet <rhyme label="b" type="m">Voorzigtigheyd</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Afgunst zal zy Iever <rhyme label="a" type="f" corresp="#s3:l1">noemen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Vraekzugt is <rhyme label="b" type="m" corresp="#s3:l2">Kloekmoedigheyd</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Maer die 't Ongelyk <rhyme label="c" type="f">vergeven</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Hun ten onregt <rhyme label="d" type="m">aengedaen</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Agt z'onweirdig van te <rhyme label="c" type="f" corresp="#s3:l5">leven</rhyme></l>
        <l id="s3:l8" met="4" type="+-">En ziet dit voor Lafheyd <rhyme label="d" type="m" corresp="#s3:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Een godvrugtig stigtbaer <rhyme label="a" type="f">Leven</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Schyn-deugd noemt dit <rhyme label="b" type="m">Kwezelry</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Die hier Ryk zyn of <rhyme label="a" type="f" corresp="#s4:l1">Verheven</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Pryst zy meest uyt <rhyme label="b" type="m" corresp="#s4:l2">vleyery</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Maer de Deugd van d'Arme <rhyme label="c" type="f">Lieden</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Is by haer altyd <rhyme label="d" type="m">verdagt</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Liefde en dienst aen d'Arme <rhyme label="c" type="f" corresp="#s4:l5">bieden</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Word verloren moeyt <rhyme label="d" type="m" corresp="#s4:l6">geagt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Schyn-deugd veynst haer zoet en <rhyme label="a" type="f">vredig</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Maer van binnen is 't <rhyme label="b" type="m">verraed</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Schoon haer inzigt schynt heel <rhyme label="a" type="f" corresp="#s5:l1">zedig</rhyme></l>
        <l id="s5:l4" met="4" type="+-">'T komt al uyt op eer of <rhyme label="b" type="m" corresp="#s5:l2">baet</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Maer de Deugd is <rhyme label="c" type="f">edelmoedig</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Mild, rond-uyt en <rhyme label="d" type="m">ongeveinst</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Zuyver, Maetig en <rhyme label="c" type="f" corresp="#s5:l5">Oodmoedig</rhyme></l>
        <l id="s5:l8" met="4" type="+-">En die zelfs geen kwaed en <rhyme label="d" type="m" corresp="#s5:l6">peist</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Tragt te wezen t'allen <rhyme label="a" type="f">tyden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Aen de Deugd als <rhyme label="b" type="m">vast-gelymt</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Want laet gy haer eens ter <rhyme label="a" type="f" corresp="#s6:l1">zyden</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Uwen goeden Naem <rhyme label="b" type="m" corresp="#s6:l2">bezwymt</rhyme></l>
        <l id="s6:l5" met="4" type="+-">En wanneer hy is <rhyme label="c" type="f">geschonden</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Of gekwetst het is zoo <rhyme label="d" type="m">zwaer</rhyme></l>
        <l id="s6:l7" met="4" type="+-">Te genezen zulke <rhyme label="c" type="f" corresp="#s6:l5">wonden</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Jae onmogelyk <rhyme label="d" type="m" corresp="#s6:l6">bynaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hebt gy eenen Naem <rhyme label="a" type="f">gekregen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Van aen de Deugd te zyn <rhyme label="b" type="m">gepaert</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Gy bezit meer Luk en <rhyme label="a" type="f" corresp="#s7:l1">Zegen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Als dat Rykdom geeft op <rhyme label="b" type="m" corresp="#s7:l2">d'Aerd</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Maer indien dat gy <rhyme label="c" type="f">onschuldig</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Word geschandvlekt in uw' <rhyme label="d" type="m">Eer</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Zyt verblyd en weest <rhyme label="c" type="f" corresp="#s7:l5">verduldig</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Gy gelykt best aen den <rhyme label="d" type="m" corresp="#s7:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Wilt uw goeden Naem <rhyme label="a" type="f">beminnen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">En bewaert dien t'allen <rhyme label="b" type="m">tyd</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Niet om Lof en Eer te <rhyme label="a" type="f" corresp="#s8:l1">winnen</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Die d'Ootmoedigheyd <rhyme label="b" type="m" corresp="#s8:l2">bestryd</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Maer om d'even Mensch te <rhyme label="c" type="f">stigten</rhyme></l>
        <l id="s8:l6" met="4" type="+-">In 't opregte <rhyme label="d" type="m">Deugde-pad</rhyme></l>
        <l id="s8:l7" met="4" type="+-">Eene Keirsse en kan niet <rhyme label="c" type="f" corresp="#s8:l5">lichten</rhyme></l>
        <l id="s8:l8" met="4" type="+-">Onder eenig <rhyme label="d" type="m" corresp="#s8:l6">Kooren-vat</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Eenen Gierigaert moet <rhyme label="a" type="f">schromen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">als hy heeft veel Goed en <rhyme label="b" type="m">Geld</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Dat het hem kan zyn <rhyme label="a" type="f" corresp="#s9:l1">ontnomen</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Of door list of door <rhyme label="b" type="m" corresp="#s9:l2">geweld</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Maer een goeden Naem heeft <rhyme label="c" type="f">schatten</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Die zy naer den Hemel <rhyme label="d" type="m">zend</rhyme></l>
        <l id="s9:l7" met="4" type="+-">Die geen Dieven konnen <rhyme label="c" type="f" corresp="#s9:l5">vatten</rhyme></l>
        <l id="s9:l8" met="4" type="+-">En die geene Motte en <rhyme label="d" type="m" corresp="#s9:l6">schend</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Laet de Wereld gal <rhyme label="a" type="f">uytbraeken</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Dat den helschen Wolf vry <rhyme label="b" type="m">bast</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Om een deugdzaem Man te <rhyme label="a" type="f" corresp="#s10:l1">laeken</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Hy blyft onberoert en <rhyme label="b" type="m" corresp="#s10:l2">vast</rhyme></l>
        <l id="s10:l5" met="4" type="+-">Zelfs de Dood kan hem niet <rhyme label="c" type="f">schaeden</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Nu hy hoopt te zyn <rhyme label="d" type="m">geloont</rhyme></l>
        <l id="s10:l7" met="4" type="+-">Voor zyn' loffelyke <rhyme label="c" type="f" corresp="#s10:l5">daeden</rhyme></l>
        <l id="s10:l8" met="4" type="+-">Waer de Deugd haer Minnaers <rhyme label="d" type="m" corresp="#s10:l6">kroont</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
