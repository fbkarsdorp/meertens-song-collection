      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Syon <rhyme label="a" type="f">uytghelesen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">V Bruydegoms stem neemt <rhyme label="b" type="m">waer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghy zijt sijn Bruydt <rhyme label="a" type="f" corresp="#s1:l1">gepresen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En hebt doch ghenen <rhyme label="b" type="m" corresp="#s1:l2">Vaer</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Hoewel ghy reyn // nu zijt <rhyme label="c" type="m">certeyn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Reynigt u noch vry <rhyme label="d" type="m">meer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Op dat ghy mooght <rhyme label="e" type="f">behaghen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">V Bruydegom Godt de <rhyme label="d" type="m" corresp="#s1:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wilt oock aentrecken <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">'Tkleedt der <rhyme label="b" type="m">gerechticheyt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En verciert uwe <rhyme label="a" type="f" corresp="#s2:l1">lede</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met de kettingh der <rhyme label="b" type="m" corresp="#s2:l2">vroomheyt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Gort u alleyn // met 't gordel <rhyme label="c" type="m">reyn</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Der Broederlijcker liefden <rhyme label="d" type="m">seer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Op dat ghy meught <rhyme label="e" type="f">behaghen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">V Bruydegom Godt en <rhyme label="d" type="m" corresp="#s2:l6">Heer</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Doet aen den ringh <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Des waren gheloofs <rhyme label="b" type="m">jent</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat ghy mocht eeuwigh <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">By Christum in 's Hemels <rhyme label="b" type="m" corresp="#s3:l2">tent</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Met de reyne vloet // der ghenaden <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wast u nae Godts <rhyme label="d" type="m">begheer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Op dat ghy meught <rhyme label="e" type="f">behaghen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">V Bruydegom Godt en <rhyme label="d" type="m" corresp="#s3:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Zijt vergult t'allen <rhyme label="a" type="f">tijden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met 'tgout des Godlijcken <rhyme label="b" type="m">woordt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Verciert aen allen <rhyme label="a" type="f" corresp="#s4:l1">zijden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met die peerlen der deughden, <rhyme label="b" type="m" corresp="#s4:l2">hoort</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Met Olye goedt // des gheestes <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Salft u nae Godes <rhyme label="d" type="m">leer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Op dat ghy meught <rhyme label="e" type="f">behaghen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">V Bruydegom Godt en <rhyme label="d" type="m" corresp="#s4:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Staet op en wilt u <rhyme label="a" type="f">spoeden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Verciert u ghy edel <rhyme label="b" type="m">Bruyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Met die Hemelsche <rhyme label="a" type="f" corresp="#s5:l1">goeden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">V Bruydegom komt <rhyme label="b" type="m" corresp="#s5:l2">uyt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">V Lamp bereydt // soo Christus <rhyme label="c" type="m">seydt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">V luyheydt leght ter <rhyme label="d" type="m">neer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Op dat ghy meught <rhyme label="e" type="f">behaghen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">V Bruydegom Godt en <rhyme label="d" type="m" corresp="#s5:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Staet op ghy Bruydt <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Volght uwen Bruydegom <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wilt oock gehoorsaem <rhyme label="a" type="f" corresp="#s6:l1">wesen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Al ist u vleesch wat <rhyme label="b" type="m" corresp="#s6:l2">swaer</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Wordt ghy verjaeght // en seer <rhyme label="c" type="m">gheplaecht</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En doet doch gheenen <rhyme label="d" type="m">weer</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Op dat ghy meught <rhyme label="e" type="f">behaghen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">V Bruydegom Godt en <rhyme label="d" type="m" corresp="#s6:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Vreest niet ghy teere <rhyme label="a" type="f">leden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Voor druck, anghst of <rhyme label="b" type="m">torment</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Al schijnt ghy nu <rhyme label="a" type="f" corresp="#s7:l1">vertreden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Het sal haest nemen <rhyme label="b" type="m" corresp="#s7:l2">endt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Wordt ghy ghequelt // in druck <rhyme label="c" type="m">gestelt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Tot Christum neemt uw <rhyme label="d" type="m">keer</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Op dat ghy meught <rhyme label="e" type="f">behaghen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">V Bruydegom Godt en <rhyme label="d" type="m" corresp="#s7:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wilt Christum helpen <rhyme label="a" type="f">draghen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Sijn smaetheydt sy is <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Zijt bereydt t 'allen <rhyme label="a" type="f" corresp="#s8:l1">daghen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Te strijden om de waerheydt <rhyme label="b" type="m" corresp="#s8:l2">bloot</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Soo ghy verwint // dit wel <rhyme label="c" type="m">versint</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">O blinckende Zyon <rhyme label="d" type="m">teer</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Soo sult ghy wel <rhyme label="e" type="f">behaghen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">V Bruydegom Godt en <rhyme label="d" type="m" corresp="#s8:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Lof zy den Heer der <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s9:l2" met="3" type="-+">De winter is <rhyme label="b" type="m">vergaen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">De waerheydt is in <rhyme label="a" type="f" corresp="#s9:l1">eeren</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">De Mey-tijdt komt nu <rhyme label="b" type="m" corresp="#s9:l2">aen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">'Tgheloove groeyt // de liefde <rhyme label="c" type="m">bloeyt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Gheeft Godt lof prijs end' <rhyme label="d" type="m">eer</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Soo sult ghy <rhyme label="e" type="f">welbehaghen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">V Bruydegom Godt en <rhyme label="d" type="m" corresp="#s9:l6">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
