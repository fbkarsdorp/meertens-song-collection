  <author>Petrus Suetmans, Eustachius de Meyer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Sa, sa, laet ons borsten <rhyme label="a" type="f">smeren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Lustigh wacker aen den <rhyme label="b" type="m">dis</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Bier en wyn is ons <rhyme label="a" type="f" corresp="#s1:l1">begeren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Tot dat 'thooft vol vreughden <rhyme label="b" type="m" corresp="#s1:l2">is</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Laet potten en <rhyme label="c" type="f">ghelaesen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Haestigh vlieghen want <rhyme label="b" type="m" corresp="#s1:l2">ghewis</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wy zyn van Bacchus <rhyme label="c" type="f" corresp="#s1:l5">baesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Al die spytigh willen <rhyme label="a" type="f">proncken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En gheen fluyt neemt in de <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dat sy 'thuys gaen ligghen <rhyme label="a" type="f" corresp="#s2:l1">roncken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Want 'tis volck sonder <rhyme label="b" type="m" corresp="#s2:l2">verstant</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Die Bacchus niet en <rhyme label="c" type="f">eeren</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Maer wy heden zyn <rhyme label="b" type="m" corresp="#s2:l2">verpant</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Om synen lof te <rhyme label="c" type="f" corresp="#s2:l5">meeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Lieten wy ons stroet <rhyme label="a" type="f">verdorren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat ons buyckxken eydel <rhyme label="b" type="m">bleef</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Hy en sou niet doen als <rhyme label="a" type="f" corresp="#s3:l1">knorren</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">'tEn sy men den dorst <rhyme label="b" type="m" corresp="#s3:l2">verdreef</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Met Fles oft volle <rhyme label="c" type="f">kannen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">In den wyn ick vreughdigh <rhyme label="b" type="m" corresp="#s3:l2">leef</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">By Bacchus vrome <rhyme label="c" type="f" corresp="#s3:l5">mannen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laet ons leven niet <rhyme label="a" type="f">verkorten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Door 'tmistroostigh droevigh <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Laet ons toch gheen traenen <rhyme label="a" type="f" corresp="#s4:l1">storten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Als van 'tsap van goeden <rhyme label="b" type="m" corresp="#s4:l2">wyn</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">'t Welck Bacchus ons wilt <rhyme label="c" type="f">jonnen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dat hy elcke <rhyme label="b" type="m" corresp="#s4:l2">Sonne-schyn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ons schenckt een versche <rhyme label="c" type="f" corresp="#s4:l5">tonne</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Op dat wy soo dagh en <rhyme label="a" type="f">nachten</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">In dit goddelycke <rhyme label="b" type="m">sop</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Onse herssenen <rhyme label="a" type="f" corresp="#s5:l1">versmachten</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat ons suyssel-bolt den <rhyme label="b" type="m" corresp="#s5:l2">kop</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat wy dan <rhyme label="c" type="f">gheleyden</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Bacchus Ton, met hem daer <rhyme label="b" type="m" corresp="#s5:l2">op</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En noyt van't nat en <rhyme label="c" type="f" corresp="#s5:l5">scheyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
