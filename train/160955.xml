<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>160955</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Wanneer ik slaap</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Onbesinde <rhyme label="a" type="f">Wereldtlingen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wat lieftge, wesenloose <rhyme label="a" type="f" corresp="#s1:l1">dingen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Een schadu vreught, als <rhyme label="b" type="m">roedt</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Voor het <rhyme label="b" type="m" corresp="#s1:l3">gemoedt</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Wellust rijckdom <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Pijnigend' haer <rhyme label="c" type="m" corresp="#s1:l5">Heer</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Wellust rijckdom eer <rhyme label="d" type="f">ontfangen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Die niet aen't schijn schoon blijven <rhyme label="d" type="f" corresp="#s1:l7">hangen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat hoopt den Mensch op 't <rhyme label="a" type="f">onbestendigh</rhyme>?</l>
        <l id="s2:l2" met="4" type="-+">Een pijnlijcke uer baert vreught <rhyme label="a" type="f" corresp="#s2:l1">on-endigh</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Die 't ydel na jaeght, <rhyme label="b" type="m">vindt</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Een handt vol <rhyme label="b" type="m" corresp="#s2:l3">windt</rhyme>:</l>
        <l id="s2:l5" met="3" type="+-">Kies geen schel voor <rhyme label="c" type="m">pit</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Dat van binnen <rhyme label="c" type="m" corresp="#s2:l5">sit</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Kiest geen schel voor pit <rhyme label="d" type="f">cieraden</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Van stroo, voor 't pronck-kleet der <rhyme label="d" type="f" corresp="#s2:l7">genade</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wie leefter onder <rhyme label="a" type="f">slavernye</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die niet een uer sou doodt pijn <rhyme label="a" type="f" corresp="#s3:l1">lye</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Bewust te worden <rhyme label="b" type="m">graef</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Van dienstb're <rhyme label="b" type="m" corresp="#s3:l3">slaef</rhyme>?</l>
        <l id="s3:l5" met="3" type="+-">Zijn 't geen tekenen <rhyme label="c" type="m">dan</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Van een rasend' <rhyme label="c" type="m" corresp="#s3:l5">Man</rhyme>?</l>
        <l id="s3:l7" met="4" type="+-">Zijn 'tgeen teeckenen van <rhyme label="d" type="f">sotheydt</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Als 'tSchepsel Godts onteert de <rhyme label="d" type="f" corresp="#s3:l7">Godheydt</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Hel-vooght, met sijn swarte <rhyme label="a" type="f">schimmen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Belet ons Hemel-waerts te <rhyme label="a" type="f" corresp="#s4:l1">klimmen</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Wanneer sijn gulden <rhyme label="b" type="m">beeldt</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Voor d'oogen <rhyme label="b" type="m" corresp="#s4:l3">speelt</rhyme>;</l>
        <l id="s4:l5" met="3" type="+-">Met een strick van <rhyme label="c" type="m">sy</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Troont hy op sijn <rhyme label="c" type="m" corresp="#s4:l5">zy</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Troont hy op sijn zy <rhyme label="d" type="f">Vyanden</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Die tegen hem te samen <rhyme label="d" type="f" corresp="#s4:l7">spanden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De schemeringh verbluf de <rhyme label="a" type="f">klaerheydt</rhyme>;</l>
        <l id="s5:l2" met="4" type="-+">De valsche logen-tael de <rhyme label="a" type="f" corresp="#s5:l1">waerheydt</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Het deught bespiegelend' <rhyme label="b" type="m">oogh</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Siet na <rhyme label="b" type="m" corresp="#s5:l3">omhoog</rhyme>;</l>
        <l id="s5:l5" met="3" type="+-">Steygert, <rhyme label="c" type="m">onverlet</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Door een reyn <rhyme label="c" type="m" corresp="#s5:l5">gebedt</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Steygert onverlet ten <rhyme label="d" type="f">Hemel</rhyme>:</l>
        <l id="s5:l8" met="4" type="+-">En acht als niet al 't aerdtsch <rhyme label="d" type="f" corresp="#s5:l7">gewemel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
