    <tags/>
    <melody>Edele artiesten koen</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt brood, het Hemelsch <rhyme label="a" type="m">brood</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">’t Welk ik u tot een <rhyme label="b" type="f">teiken</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van liefde al te <rhyme label="a" type="m" corresp="#s1:l1">groot</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Eens komen zal te <rhyme label="b" type="f" corresp="#s1:l2">reiken</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Is voor des werelds <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Mijn aengenomen <rhyme label="d" type="m">vleisch</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Waer op de Ioden <rhyme label="c" type="f" corresp="#s1:l5">keven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En kozen krijg voor <rhyme label="d" type="m" corresp="#s1:l6">peis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Voorwaer ’t was geen <rhyme label="a" type="m">bescheid</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat zy, voor weer te <rhyme label="b" type="f">geven</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Een zucht van <rhyme label="a" type="m" corresp="#s2:l1">dankbaerheid</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ondankbaerlijkken <rhyme label="b" type="f" corresp="#s2:l2">keven</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Doch ’t waren <rhyme label="c" type="f">Capharniten</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Maer dat een Christen <rhyme label="d" type="m">Kerk</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hier om dus komt te <rhyme label="c" type="f" corresp="#s2:l5">kriten</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Is al te vreemdem <rhyme label="d" type="m" corresp="#s2:l6">werk</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">’t Sijn al te scharpe <rhyme label="a" type="m">reen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wie zouze kunnen <rhyme label="b" type="f">harden</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Een lyf kan maer op <rhyme label="a" type="m" corresp="#s3:l1">een</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Begrip, bevonden <rhyme label="b" type="f" corresp="#s3:l2">werden</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">En dan zoo moet noch <rhyme label="c" type="f">even</rhyme></l>
        <l id="s3:l6" met="3" type="-+">De plaets sijn, meer noch <rhyme label="d" type="m">min</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van grote, als het <rhyme label="c" type="f" corresp="#s3:l5">leven</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">’t Welk daer wil komen <rhyme label="d" type="m" corresp="#s3:l6">in</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Waer Jesus lichaem <rhyme label="a" type="m">daer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hoe zou hy hem voor <rhyme label="b" type="f">d’ogen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Iae selfs voor alle <rhyme label="a" type="m" corresp="#s4:l1">gaer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">De zinnen schuilen <rhyme label="b" type="f" corresp="#s4:l2">mogen</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">Al watmen komt te <rhyme label="c" type="f">smaken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Al watmen ruikt, of <rhyme label="d" type="m">ziet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Men oordeelt brood te <rhyme label="c" type="f" corresp="#s4:l5">raken</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Of wijn, en anders <rhyme label="d" type="m" corresp="#s4:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ziet hier toch eens de <rhyme label="a" type="m">kuir</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Der Nieuwekerken <rhyme label="b" type="f">oorde</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer zy tot een <rhyme label="a" type="m" corresp="#s5:l1">figuir</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Mee dringt Goods klare <rhyme label="b" type="f" corresp="#s5:l2">woorden</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Ach ydelheid der <rhyme label="c" type="f">menschen</rhyme>!</l>
        <l id="s5:l6" met="3" type="-+">Die Goods <rhyme label="d" type="m">verburgentheid</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Wilt trekken naer de <rhyme label="c" type="f" corresp="#s5:l5">wenschen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Van uw’ verzuft <rhyme label="d" type="m" corresp="#s5:l6">bescheid</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Moet ghy het wonder <rhyme label="a" type="m">daed</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Des Henels ons <rhyme label="b" type="f">benijpen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Om dat uw’ nauwe <rhyme label="a" type="m" corresp="#s6:l1">maet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dat niet en kan <rhyme label="b" type="f" corresp="#s6:l2">begrijpen</rhyme>?</l>
        <l id="s6:l5" met="3" type="-+">Weet dat des Heeren <rhyme label="c" type="f">zegen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Is ruimer als uw’ <rhyme label="d" type="m">hart</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">En die haer spraken <rhyme label="c" type="f" corresp="#s6:l5">tegen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Behaelden noit dan <rhyme label="d" type="m" corresp="#s6:l6">smart</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De wizen die wel <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s7:l2" met="3" type="-+">’t Gedoukte kind <rhyme label="b" type="f">aenbaden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En zagen min noch <rhyme label="a" type="m" corresp="#s7:l1">meer</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Als armoe van <rhyme label="b" type="f" corresp="#s7:l2">gewaden</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Met tederheyd van <rhyme label="c" type="f">leden</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">End’ efter hebben <rhyme label="d" type="m">zijt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Eerbied’lijk <rhyme label="c" type="f" corresp="#s7:l5">aengebeden</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Als God <rhyme label="d" type="m" corresp="#s7:l6">gebenedijdt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">En dat niet dan op <rhyme label="a" type="m">een</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gestart aen hen <rhyme label="b" type="f">verschenen</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Daer voor hen alle <rhyme label="a" type="m" corresp="#s8:l1">reen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Van tegenspraek <rhyme label="b" type="f" corresp="#s8:l2">verdwenen</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Wat ist dat den <rhyme label="c" type="f">Lantaren</rhyme></l>
        <l id="s8:l6" met="3" type="-+">In ons dan niet en <rhyme label="d" type="m">hoord</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Te werken met zoo <rhyme label="c" type="f" corresp="#s8:l5">klaren</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Betuig, van Godes <rhyme label="d" type="m" corresp="#s8:l6">woord</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Neemt, eet, dit is mijn <rhyme label="a" type="m">vleis</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">’t Welk morgen inde <rhyme label="b" type="f">handen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Zal tot zoo wreden <rhyme label="a" type="m" corresp="#s9:l1">eisch</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Vervallen der <rhyme label="b" type="f" corresp="#s9:l2">vyanden</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Ziet hier ’t gestarde <rhyme label="c" type="f">baken</rhyme>!</l>
        <l id="s9:l6" met="3" type="-+">Daer op men ’t <rhyme label="d" type="m">Sacrament</rhyme></l>
        <l id="s9:l7" met="3" type="-+">(Hoe zeer de Ketters <rhyme label="c" type="f" corresp="#s9:l5">kaken</rhyme>)</l>
        <l id="s9:l8" met="3" type="-+">Voor Christus lichaem <rhyme label="d" type="m" corresp="#s9:l6">kendt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
