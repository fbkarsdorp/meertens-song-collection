    <melody>Ach wat is de maagdenstaat</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Op den lieffelyken <rhyme label="a" type="m">glans</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">De Zon met haar vergulde <rhyme label="b" type="f">straalen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ryst aan den hoogen <rhyme label="a" type="m" corresp="#s1:l1">Hemeltrans</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dies moet ik God myn pligt <rhyme label="b" type="f" corresp="#s1:l2">betaalen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Zou ik dan in den <rhyme label="c" type="m">dageraad</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Op ’t logge bed nog langer <rhyme label="d" type="f">ronken</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Daar alles heerlyk voor my <rhyme label="c" type="m" corresp="#s1:l5">staat</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Tot eer van God in kragt te <rhyme label="d" type="f" corresp="#s1:l6">pronken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">ô Neen ik treed ter rustplaats <rhyme label="a" type="m">uit</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Genood door de aangenaame <rhyme label="b" type="f">klanken</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En ’t zielverrukkende <rhyme label="a" type="m" corresp="#s2:l1">geluit</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Om God en ’t ligt te <rhyme label="b" type="f" corresp="#s2:l2">danken</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Die my bevryd heeft dezen <rhyme label="c" type="m">nagt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Voor ramp, voor schade, ziekt’ en <rhyme label="d" type="f">sterven</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Daar ane’re schielyk <rhyme label="c" type="m" corresp="#s2:l5">onverwagt</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Gestorven, ’t lieve daglicht <rhyme label="d" type="f" corresp="#s2:l6">derven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daar legt ’t duister <rhyme label="a" type="m">nachtgewaad</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">’t Dag levrei weer <rhyme label="b" type="f">aangetogen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Terwyl de gulde Zon <rhyme label="a" type="m" corresp="#s3:l1">opgaat</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En alles opent voor ons <rhyme label="b" type="f" corresp="#s3:l2">oogen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Maar eerst zal ik met hart en <rhyme label="c" type="m">mond</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Myn God voor al Zyn goedheid <rhyme label="d" type="f">loven</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">En wagten op dien goeden <rhyme label="c" type="m" corresp="#s3:l5">grond</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Zyn zegen op myn werk van <rhyme label="d" type="f" corresp="#s3:l6">boven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">ô God die myn ’t leven <rhyme label="a" type="m">schenkt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En over my U Zon laat <rhyme label="b" type="f">ryzen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die my uit blydschaps beken <rhyme label="a" type="m" corresp="#s4:l1">drenkt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Verligt my om uw naam te <rhyme label="b" type="f" corresp="#s4:l2">pryzen</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Laat ’t Levensligt u goeden <rhyme label="c" type="m">Geest</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Myn duister hart en ziel <rhyme label="d" type="f">verligten</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Dat Gy mogt zyn van my <rhyme label="c" type="m" corresp="#s4:l5">gevreest</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">En ik mag mynen pligt <rhyme label="d" type="f" corresp="#s4:l6">betragten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ontlast my van ’t duister <rhyme label="a" type="m">kleed</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">’t Schandig kleed der vuilste <rhyme label="b" type="f">zonden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maakt my tot uwen dienst <rhyme label="a" type="m" corresp="#s5:l1">gereed</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Rechtvaardigt my om Christus <rhyme label="b" type="f" corresp="#s5:l2">wonden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Bekleed my met het rein <rhyme label="c" type="m">cieraad</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">’t Bruilofts-kleed van myn <rhyme label="d" type="f">beminden</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Myn Heiland die steeds voor myn <rhyme label="c" type="m" corresp="#s5:l5">staat</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">In wien alleen ik troost kan <rhyme label="d" type="f" corresp="#s5:l6">vinden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Zoo zal ik vergenoegd en <rhyme label="a" type="m">bly</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Myn arbeid in U vrees <rhyme label="b" type="f">beginnen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wanneer U Geest steeds blyft by <rhyme label="a" type="m" corresp="#s6:l1">my</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En stiert myn gangen en myn <rhyme label="b" type="f" corresp="#s6:l2">zinnen</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Tot ik voleind heb ’t <rhyme label="c" type="m">levensloop</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En na myn sterfuur <rhyme label="d" type="f">opgenomen</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Mag worden, daar myn lust en <rhyme label="c" type="m" corresp="#s6:l5">hoop</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Zich vestigt om by U te <rhyme label="d" type="f" corresp="#s6:l6">komen</rhyme>.</l>
      </lg>
    </lg>
  </text>
