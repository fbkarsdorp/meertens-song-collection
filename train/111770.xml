      <category translation="children">kinderen</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IK ban de Vryheid uyt myn <rhyme label="a" type="f">zinnen</rhyme>.</l>
        <l id="s1:l2" met="4" type="-+">En Dompel z'in heur naeren <rhyme label="b" type="m">nacht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Als Amaril, my weer wil <rhyme label="a" type="f" corresp="#s1:l1">minnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En horen, naer myn <rhyme label="b" type="m" corresp="#s1:l2">Minneklagt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'k Zal al des Werelds schatten <rhyme label="a" type="f">laten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Als Amaril met haren <rhyme label="b" type="m">mond</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">(Veel zoeter dan de <rhyme label="a" type="f" corresp="#s2:l1">Honingraten</rhyme>,)</l>
        <l id="s2:l4" met="4" type="-+">Wil balsemen myn minne <rhyme label="b" type="m" corresp="#s2:l2">Wond</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Geen goud zal ooid myn zinnen <rhyme label="a" type="f">stelen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Geen schat beheerschen myn <rhyme label="b" type="m">gemoed</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Als ik myn Amaril mag <rhyme label="a" type="f" corresp="#s3:l1">strelen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En zy gestaeg myn liefde <rhyme label="b" type="m" corresp="#s3:l2">Voed</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wie zou dog niet van liefde <rhyme label="a" type="f">branden</rhyme>?</l>
        <l id="s4:l2" met="4" type="-+">Wie zwymde niet van 't groot <rhyme label="b" type="m">vermaek</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">Die op haer lipjes eens mogt <rhyme label="a" type="f" corresp="#s4:l1">stranden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En Roosjes plukken van haer <rhyme label="b" type="m" corresp="#s4:l2">kaek</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer heeft de Minne God <rhyme label="a" type="f">beschoren</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat ik die frisse bloemen <rhyme label="b" type="m">pluk</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ben ik tot dat geluk <rhyme label="a" type="f" corresp="#s5:l1">geboren</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">ô Min wat Overgroot <rhyme label="b" type="m" corresp="#s5:l2">gelukt</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dan zal ik met gevouwen <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">U jarelyks, en keer op <rhyme label="b" type="m">keer</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Twee Hagelwitte Duyve <rhyme label="a" type="f" corresp="#s6:l1">branden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">ô Minne God, tot uwer <rhyme label="b" type="m" corresp="#s6:l2">Eer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
