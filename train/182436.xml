  <author>Tannetge Kornelis Blok</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Daer was reden om te <rhyme label="a" type="f">treuren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Wanneer Adam quam ten <rhyme label="b" type="m">val</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Maer daer moet ook vreugt <rhyme label="a" type="f" corresp="#s1:l1">gebeuren</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Als dit God weer heelen <rhyme label="b" type="m" corresp="#s1:l2">zal</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En veel blijde tekens <rhyme label="c" type="m">zend</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Schier waer menschen zijn <rhyme label="c" type="m" corresp="#s1:l5">bekend</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">En gebruijkt dan zulke <rhyme label="a" type="f">dingen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Nu de menschen haer <rhyme label="b" type="m">verstand</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Een exempel <rhyme label="a" type="f" corresp="#s2:l1">zonderlingen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Zijn de Wijse uit <rhyme label="b" type="m" corresp="#s2:l2">Oostenland</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">’s Hemels loop zy haer <rhyme label="c" type="m">verslaen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Daer zend God een teeken <rhyme label="c" type="m" corresp="#s2:l5">aen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">‘t Geen ook neerstig <rhyme label="a" type="f">waergenomen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Wierd van haer en boven <rhyme label="b" type="m">dat</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sijn zy uyt haer Land <rhyme label="a" type="f" corresp="#s3:l1">gekomen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Tot Ierusalem in de <rhyme label="b" type="m" corresp="#s3:l2">Stadt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En van daer na <rhyme label="c" type="m">Bethlehem</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Alwaer dat zy vonden <rhyme label="c" type="m" corresp="#s3:l5">hem</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Waerlijk die den Heer <rhyme label="a" type="f">soeken</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Met een opregte heilig <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">‘t Zy in wat voor werelds <rhyme label="a" type="f" corresp="#s4:l1">hoeken</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Hy van haer gevonden <rhyme label="b" type="m" corresp="#s4:l2">werd</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Als wy aen dees wijse <rhyme label="c" type="m">lien</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Uijt het Oosten konnen <rhyme label="c" type="m" corresp="#s4:l5">zien</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wel gelukkig die <rhyme label="a" type="f">besteden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Al haer wijsheid en <rhyme label="b" type="m">verstand</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Om aen desen Vorst te <rhyme label="a" type="f" corresp="#s5:l1">vreden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ook te brengen <rhyme label="b" type="m" corresp="#s5:l2">offerhand</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">En met een opregt <rhyme label="c" type="m">gemoed</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Staeg na zin geboden <rhyme label="c" type="m" corresp="#s5:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dat zig niemand in en <rhyme label="a" type="f">beelde</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Dat den Heer van ‘t wonder <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">In een Sodoma vol <rhyme label="a" type="f" corresp="#s6:l1">weelde</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Hem ook laten vinden <rhyme label="b" type="m" corresp="#s6:l2">zal</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Neen men moet te <rhyme label="c" type="m">Bethlehem</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Komen, aldaer vind men <rhyme label="c" type="m" corresp="#s6:l5">hem</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">In het brooddhuis in zijn <rhyme label="a" type="f">Kerke</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Daer men zijn geboden <rhyme label="b" type="m">leert</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Aldaer konnen wy <rhyme label="a" type="f" corresp="#s7:l1">bemerken</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Dat hy nog wil zyn <rhyme label="b" type="m" corresp="#s7:l2">ge-eert</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Ia daer merken wy <rhyme label="c" type="m">gewis</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Dat hy nog te vinden <rhyme label="c" type="m" corresp="#s7:l5">is</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Daer wil hy sijn gunst <rhyme label="a" type="f">bewijsen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Aen ons arme mensche <rhyme label="b" type="m">snoot</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">En ons na der zielen <rhyme label="a" type="f" corresp="#s8:l1">spysen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Met dat levend hemels <rhyme label="b" type="m" corresp="#s8:l2">brood</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Met zyn woord dat heijlig <rhyme label="c" type="m">Man</rhyme></l>
        <l id="s8:l6" met="4" type="+-">'t Geen ons regt versaden <rhyme label="c" type="m" corresp="#s8:l5">kan</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Sijn wy dan regt <rhyme label="a" type="f">ondersaten</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Van des Konings <rhyme label="b" type="m">Majesteyt</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Soo en mogen wy niet <rhyme label="a" type="f" corresp="#s9:l1">laten</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Daer te komen en <rhyme label="b" type="m" corresp="#s9:l2">bereyd</rhyme>?</l>
        <l id="s9:l5" met="4" type="+-">En te doen wat hy <rhyme label="c" type="m">gebied</rhyme>;</l>
        <l id="s9:l6" met="4" type="+-">Of wy zijn Vrienden <rhyme label="c" type="m" corresp="#s9:l5">niet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Sien wy niet hoe dese <rhyme label="a" type="f">lieden</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Komen uyt het <rhyme label="b" type="m">Oostenland</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Onsen Zaligmaker <rhyme label="a" type="f" corresp="#s10:l1">bieden</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Seer eerbiedig <rhyme label="b" type="m" corresp="#s10:l2">offerhand</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Die niet regt en zijn <rhyme label="c" type="m">geleerd</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Hoe dat Christus dient <rhyme label="c" type="m" corresp="#s10:l5">ge-eert</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Dit moet zullie menschen <rhyme label="a" type="f">strekken</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Om ons overtuigt te <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Die ‘t zoo ligtelyk <rhyme label="a" type="f" corresp="#s11:l1">vertrekken</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Dat zy niet ter Kerke <rhyme label="b" type="m" corresp="#s11:l2">gaen</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Want dien tijd dient <rhyme label="c" type="m">uytgekogt</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">En Gods Rijk voor al <rhyme label="c" type="m" corresp="#s11:l5">gesogt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Schoon hy meynd gy kond <rhyme label="a" type="f">bemerke</rhyme></l>
        <l id="s12:l2" met="4" type="+-">‘t Sy in waerheid of in <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Daer ‘er in des Heere <rhyme label="a" type="f" corresp="#s12:l1">Kerke</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Eenig argenisse <rhyme label="b" type="m" corresp="#s12:l2">zyn</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Stoot u daer soo veel niet <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Dat gy laten soud te <rhyme label="c" type="m" corresp="#s12:l5">gaen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Brengt u ongeveynst <rhyme label="a" type="f">geloove</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Offert hem dit dierbaer <rhyme label="b" type="m">gout</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Niemand onsen schat en <rhyme label="a" type="f" corresp="#s13:l1">roove</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">En de liefde niet <rhyme label="b" type="m" corresp="#s13:l2">verkout</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Hoopen, waken, bidden <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Is zoet Reukwerk voor den <rhyme label="c" type="m" corresp="#s13:l5">Heer</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Op dat niet de wijse <rhyme label="a" type="f">komen</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">En ons in den Ionsten <rhyme label="b" type="m">dag</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Door haer neerstigheid <rhyme label="a" type="f" corresp="#s14:l1">verdoemen</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Want dan baet geen <rhyme label="b" type="m" corresp="#s14:l2">nageklag</rhyme>?</l>
        <l id="s14:l5" met="4" type="+-">Maer nu is den regten <rhyme label="c" type="m">tijd</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Dat men zig daer na <rhyme label="c" type="m" corresp="#s14:l5">bevrijt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Ia laet ons als zijn <rhyme label="a" type="f">beminde</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Schapen; horen na zijn <rhyme label="b" type="m">stem</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Op dat wy hem mogen <rhyme label="a" type="f" corresp="#s15:l1">vinden</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">In het nieuw <rhyme label="b" type="m" corresp="#s15:l2">Ierusalem</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">daer hy ons de levens <rhyme label="c" type="m">Kroon</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Geven wil tot eenen <rhyme label="c" type="m" corresp="#s15:l5">loon</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Die volbrengen wil dien <rhyme label="a" type="f">Koning</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">In ons werken al <rhyme label="b" type="m">gelijk</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">En ons namaels in zyn <rhyme label="a" type="f" corresp="#s16:l1">woning</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Brengen in zijn Vader <rhyme label="b" type="m" corresp="#s16:l2">Ryk</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">Dit wensch ik ons <rhyme label="c" type="m">allegaer</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Tot een zalig nieuw <rhyme label="c" type="m" corresp="#s16:l5">Iaer</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
