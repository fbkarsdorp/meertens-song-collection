  <author>Isaak A. van Vaerlen en Jan Jansz. van Asten</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy die in stilt en sagte <rhyme label="a" type="m">rust</rhyme></l>
        <l id="s1:l2" met="3" type="-+">U leven slijten <rhyme label="b" type="m">magh</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">En na u <rhyme label="a" type="m" corresp="#s1:l1">lust</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Magh leven vredigh dagh aen <rhyme label="b" type="m" corresp="#s1:l2">dagh</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Hoe hongert dy dus <rhyme label="c" type="m">onversaedt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Na d'yd'e hoofsche <rhyme label="c" type="m" corresp="#s1:l5">staet</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Vol woeligh <rhyme label="d" type="f">slaven</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Vol anghstigh <rhyme label="d" type="f" corresp="#s1:l7">draeven</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">En een nest van <rhyme label="c" type="m" corresp="#s1:l5">quaet</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe is u breyn dus op der <rhyme label="a" type="m">loop</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat gy dus avrecks <rhyme label="b" type="m">keurt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">En stelt u <rhyme label="a" type="m" corresp="#s2:l1">hoop</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In't geen meer waerdigh is <rhyme label="b" type="m" corresp="#s2:l2">betreurt</rhyme>?</l>
        <l id="s2:l5" met="4" type="-+">'t Verscheelt soo veel als Wit en <rhyme label="c" type="m">Swart</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Alst licht gehouden <rhyme label="c" type="m" corresp="#s2:l5">wart</rhyme></l>
        <l id="s2:l7" met="2" type="-+">By <rhyme label="d" type="f">duysterheeden</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Sijn uwe <rhyme label="d" type="f" corresp="#s2:l7">schreeden</rhyme></l>
        <l id="s2:l9" met="3" type="+-">Van het recht <rhyme label="c" type="m" corresp="#s2:l5">vervart</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy die gheen ander Wit en <rhyme label="a" type="m">schiet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Alst laegh, daer hy in <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">En quelt sigh <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Of yemant hem te boven <rhyme label="b" type="m" corresp="#s3:l2">gaet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">In heerschappy, en <rhyme label="c" type="m">machtigheen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hy gaet gerustigh <rhyme label="c" type="m" corresp="#s3:l5">treen</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Vry van <rhyme label="d" type="f">ontsetten</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Dat sijne <rhyme label="d" type="f" corresp="#s3:l7">wetten</rhyme></l>
        <l id="s3:l9" met="3" type="+-">Niet ward' aen <rhyme label="c" type="m" corresp="#s3:l5">gebeen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick leef in kleynheydt vol <rhyme label="a" type="m">geneught</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En laet de hoofse <rhyme label="b" type="m">schijn</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Een die haer <rhyme label="a" type="m" corresp="#s4:l1">vreught</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Bekomen, alse Meesters <rhyme label="b" type="m" corresp="#s4:l2">sijn</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Ick schuu dat licht verdreyent <rhyme label="c" type="m">Rat</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die wegh is my te <rhyme label="c" type="m" corresp="#s4:l5">glat</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Die maer sijn <rhyme label="d" type="f">leven</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Tot stilt mach <rhyme label="d" type="f" corresp="#s4:l7">geven</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">Heeft een waerder <rhyme label="c" type="m" corresp="#s4:l5">schat</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
