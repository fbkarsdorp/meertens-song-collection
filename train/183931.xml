  <author>Jan Steven van Esveldt Holtrop, Willem Holtrop</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">De notre <rhyme label="a" type="f">architecture</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Qui sait le <rhyme label="b" type="m">fondement</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dans la simple <rhyme label="a" type="f" corresp="#s1:l1">nature</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Cherche son <rhyme label="b" type="m" corresp="#s1:l2">élément</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Nous éstimons la <rhyme label="c" type="f">gloire</rhyme></l>
        <l id="s1:l6" met="3" type="-+">De Vitruve et <rhyme label="d" type="m">Mansart</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Mais, le pourroit - on <rhyme label="c" type="f" corresp="#s1:l5">croire</rhyme>?</l>
        <l id="s1:l8" met="3" type="-+">Ce n'est pas lâ notre <rhyme label="d" type="m" corresp="#s1:l6">art</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ces oeuvres de <rhyme label="a" type="f">génie</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Qu'enfantent les beaux <rhyme label="b" type="m">arts</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Objets de notre <rhyme label="a" type="f" corresp="#s2:l1">envie</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Touchent peu nos <rhyme label="b" type="m" corresp="#s2:l2">régards</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Le plus bel <rhyme label="c" type="f">édifice</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">N'etant que pour les <rhyme label="d" type="m">sens</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">N'est pas même <rhyme label="c" type="f" corresp="#s2:l5">l'ésquisse</rhyme></l>
        <l id="s2:l8" met="3" type="-+">De nos merveilleux <rhyme label="d" type="m" corresp="#s2:l6">plans</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Rendons à ces grands <rhyme label="a" type="f">hommes</rhyme></l>
        <l id="s3:l2" met="3" type="-+">L'honneur qui leur est <rhyme label="b" type="m">dû</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Et tous, tant que nous <rhyme label="a" type="f" corresp="#s3:l1">sommes</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Imitons leur <rhyme label="b" type="m" corresp="#s3:l2">vertu</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Qui tendit avec <rhyme label="c" type="f">zèle</rhyme></l>
        <l id="s3:l6" met="3" type="-+">A la <rhyme label="d" type="m">perfection</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">D'être notre <rhyme label="c" type="f" corresp="#s3:l5">modèle</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Montra <rhyme label="d" type="m" corresp="#s3:l6">l'intention</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">A la gloire <rhyme label="a" type="f">éternelle</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Quand Salomon <rhyme label="b" type="m">bâtit</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">S'il fut notre <rhyme label="a" type="f" corresp="#s4:l1">modèle</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ce ne fut qu'en <rhyme label="b" type="m" corresp="#s4:l2">ésprit</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Il construisit un <rhyme label="c" type="f">temple</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Qui charma tous les <rhyme label="d" type="m">yeux</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Nous ornons cet <rhyme label="c" type="f" corresp="#s4:l5">exemple</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Des traits plus <rhyme label="d" type="m" corresp="#s4:l6">radieux</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mais leurs brillans <rhyme label="a" type="f">ouvrages</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Qu'admire encor le <rhyme label="b" type="m">tems</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sont de foibles <rhyme label="a" type="f" corresp="#s5:l1">images</rhyme></l>
        <l id="s5:l4" met="3" type="-+">De nos rares <rhyme label="b" type="m" corresp="#s5:l2">talens</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Le marbre, ni <rhyme label="c" type="f">l'ivoire</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">La pierre, ni la <rhyme label="d" type="m">chaux</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Ne font rien à la <rhyme label="c" type="f" corresp="#s5:l5">gloire</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Où tendent nos <rhyme label="d" type="m" corresp="#s5:l6">travaux</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Le coeur est notre <rhyme label="a" type="f">planche</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">L'équité notre <rhyme label="b" type="m">fin</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">La morale est la <rhyme label="a" type="f" corresp="#s6:l1">branche</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Qui mêne à ce <rhyme label="b" type="m" corresp="#s6:l2">destin</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Sur les ruines du <rhyme label="c" type="f">vice</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Bâtir à la <rhyme label="d" type="m">vertu</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Voilà notre <rhyme label="c" type="f" corresp="#s6:l5">édifice</rhyme>.</l>
        <l id="s6:l8" met="3" type="-+">Sera-t-il <rhyme label="d" type="m" corresp="#s6:l6">abattu</rhyme>?</l>
      </lg>
    </lg>
  </text>
