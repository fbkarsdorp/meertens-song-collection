    <categories>
      <category translation="love and sex">liefde en seks</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O wrede, stuurse <rhyme label="a" type="m">Maagd</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe zijn verkeert uw <rhyme label="b" type="f">zinnen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dat gy geen liefde <rhyme label="a" type="m" corresp="#s1:l1">draagt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Aan die uw plagt te <rhyme label="b" type="f" corresp="#s1:l2">minnen</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Dat gy nu van my <rhyme label="c" type="m">vlugt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Als ik U Liefde <rhyme label="d" type="m">toon</rhyme>!</l>
        <l id="s1:l7" met="3" type="-+">Om u is ‘t dat ik <rhyme label="c" type="m" corresp="#s1:l5">sugt</rhyme>:</l>
        <l id="s1:l8" met="3" type="-+">Is dat voor mijnen <rhyme label="d" type="m" corresp="#s1:l6">loon</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O wrede mijn <rhyme label="a" type="m">Godin</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Om u so moet ik <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Want gy veragt mijn <rhyme label="a" type="m" corresp="#s2:l1">min</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Sal u een ander <rhyme label="b" type="f" corresp="#s2:l2">erve</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Philis en doet dat <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Want ik lijd sulken <rhyme label="d" type="m">pyn</rhyme></l>
        <l id="s2:l7" met="3" type="-+">- Gelijk gy nu wel <rhyme label="c" type="m" corresp="#s2:l5">siet</rhyme> -</l>
        <l id="s2:l8" met="3" type="-+">Ja, noit gesont kan <rhyme label="d" type="m" corresp="#s2:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Waer is, helaas, die <rhyme label="a" type="m">tijd</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat gy my plagt te <rhyme label="b" type="f">schenken</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Uw trouw’ <rhyme label="a" type="m" corresp="#s3:l1">genegentheyd</rhyme>?</l>
        <l id="s3:l4" met="3" type="-+">Wilt daar maar eens om <rhyme label="b" type="f" corresp="#s3:l2">denken</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Hoe g’hebt mijn ziel <rhyme label="c" type="m">doorwont</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In ‘t midden van mijn <rhyme label="d" type="m">hert</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat   een kusjen aan uw <rhyme label="c" type="m" corresp="#s3:l5">mond</rhyme></l>
        <l id="s3:l8" met="3" type="-+">My nu gewijgert <rhyme label="d" type="m" corresp="#s3:l6">werd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ik had dat noit <rhyme label="a" type="m">gedagt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wanneer ik na u <rhyme label="b" type="f">vrijde</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Als gy mijn liefde <rhyme label="a" type="m" corresp="#s4:l1">sag</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">My brengen sou in <rhyme label="b" type="f" corresp="#s4:l2">lijde</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Gy zijt wel straf van <rhyme label="c" type="m">sin</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat gy my niet <rhyme label="d" type="m">bemint</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Daar ik tot u, <rhyme label="c" type="m" corresp="#s4:l5">Godin</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Van herten ben <rhyme label="d" type="m" corresp="#s4:l6">gesint</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">‘k Heb u noit <rhyme label="a" type="m">afgegaan</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Of u noit <rhyme label="b" type="f">afgeweken</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Maar mijne min blyft <rhyme label="a" type="m" corresp="#s5:l1">staen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Duisentmaal meer <rhyme label="b" type="f" corresp="#s5:l2">ontsteken</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Waarom my so <rhyme label="c" type="m">veragt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Waarom my so <rhyme label="d" type="m">versmaat</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dat gy myn sugt   <rhyme label="c" type="m" corresp="#s5:l5">belagt</rhyme></l>
        <l id="s5:l8" met="3" type="-+">En elders liefde <rhyme label="d" type="m" corresp="#s5:l6">draagt</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Vaart wel, o schoonste <rhyme label="a" type="m">Beeld</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Vaart wel, stuurse <rhyme label="b" type="f">Vrindinne</rhyme>!</l>
        <l id="s6:l3" met="3" type="-+">Gy hebt mijn ziel <rhyme label="a" type="m" corresp="#s6:l1">gestreelt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Door uw gevijnsde <rhyme label="b" type="f" corresp="#s6:l2">sinnen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Gy brengt mijn ziel vol <rhyme label="c" type="m">smert</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Rukt my het leven <rhyme label="d" type="m">af</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Blyf nu ook in myn <rhyme label="c" type="m" corresp="#s6:l5">hert</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Tot dat ik daal in ‘t <rhyme label="d" type="m" corresp="#s6:l6">graf</rhyme>!</l>
      </lg>
    </lg>
  </text>
