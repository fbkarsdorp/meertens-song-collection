    <melody>Het voer een knaapje over Rijn</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghy Christen hoort dit kleyn <rhyme label="a" type="m">vermaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En wilt dit Liedt in danck <rhyme label="a" type="m" corresp="#s1:l1">ontfaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gelijck men uyt de schrift kan <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dus wilt dit wel te recht <rhyme label="a" type="m" corresp="#s1:l1">verstaen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Den arbeyt is anders <rhyme label="b" type="f" corresp="#s1:l3">verloren</rhyme>/</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy souden gheerne wesen <rhyme label="a" type="m">ghenaemt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Gods Kinderen, soo ‘t wel <rhyme label="a" type="m" corresp="#s2:l1">betaemt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Soo moeten wy hoort doch nae <rhyme label="b" type="f">desen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Omgordt zijn met der liefden <rhyme label="a" type="m" corresp="#s2:l1">bant</rhyme></l>
        <l id="s2:l5" met="4" type="-+">En onsen Godt van herten <rhyme label="b" type="f" corresp="#s2:l3">vresen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sijn woort doet ons vermanen <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ootmoedich van herten te <rhyme label="a" type="m" corresp="#s3:l1">zijn</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat quaet met het goet te <rhyme label="b" type="f">betalen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ons woordt met Sout ghemenght te <rhyme label="a" type="m" corresp="#s3:l1">zijn</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Gewoegen als op de <rhyme label="b" type="f" corresp="#s3:l3">Goud-schaelen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En wachten u voor zonde en <rhyme label="a" type="m">schant</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Daer dat ghy zijt aen allen <rhyme label="a" type="m" corresp="#s4:l1">kant</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En wilt de Schriftuyer <rhyme label="b" type="f">doorgronden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Op dat u licht niet duyster <rhyme label="a" type="m" corresp="#s4:l1">brant</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En weest niet lichtveerdich van <rhyme label="b" type="f" corresp="#s4:l3">monde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Aenhoort doch wat ons Paulus <rhyme label="a" type="m">seyt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Hoe klaerlijck dat hy ‘t ons uyt <rhyme label="a" type="m" corresp="#s5:l1">leyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Quaet gheklap verderft goede <rhyme label="b" type="f">zeden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dus wandelt als uw roep <rhyme label="a" type="m" corresp="#s5:l1">betaemt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En hebt wel acht op uwe <rhyme label="b" type="f" corresp="#s5:l3">reden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dit is aldus een simpel <rhyme label="a" type="m">bediet</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Met korte woorden verhaelt dit <rhyme label="a" type="m" corresp="#s6:l1">Liedt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Off daer yemant met waer <rhyme label="b" type="f">behanghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Want het en betaemt den Heylighen <rhyme label="a" type="m" corresp="#s6:l1">niet</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Die hebben wel acht op hare <rhyme label="b" type="f" corresp="#s6:l3">ganghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
