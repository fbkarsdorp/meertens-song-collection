  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer, aenhoor mijn gebet <rhyme label="a" type="f">ootmoedich</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">End wil my bieden dijn oor <rhyme label="a" type="f" corresp="#s1:l1">spoedich</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op tsmeecken dat ick dy <rhyme label="b" type="m">voirhou</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Verleen my doch een antwoird <rhyme label="a" type="f" corresp="#s1:l1">goedich</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Na dijn gerechticheyt end <rhyme label="b" type="m" corresp="#s1:l3">trou</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wil int gericht, met my, niet <rhyme label="a" type="f">treden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Om dijnen Dienaer <rhyme label="a" type="f" corresp="#s2:l1">t'overreden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Van dat ick swaerlijck heb <rhyme label="b" type="m">misdaen</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Want gheen mensch levend hier <rhyme label="a" type="f" corresp="#s2:l1">beneden</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Sal van dy gerechtveirdicht <rhyme label="b" type="m" corresp="#s2:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn vyandt iaegt my hardt na <rhyme label="a" type="f">tleven</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">End heeft my neer ter eird <rhyme label="a" type="f" corresp="#s3:l1">gedreven</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Iae oock een diepe <rhyme label="b" type="m">duysterniss'</rhyme></l>
        <l id="s3:l4" met="4" type="-+">My tot gevangenis <rhyme label="a" type="f" corresp="#s3:l1">gegeven</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Als eenen die gestorven <rhyme label="b" type="m" corresp="#s3:l3">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daer van is my den geest <rhyme label="a" type="f">benouwet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">So dat hy oock bynae <rhyme label="a" type="f" corresp="#s4:l1">wantrouwet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Mits dat hy nergens troost en <rhyme label="b" type="m">vint</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Het hert is binnen my <rhyme label="a" type="f" corresp="#s4:l1">verflouwet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">So dat mijn cracht geheel <rhyme label="b" type="m" corresp="#s4:l3">verswindt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dies haluen keer ick myn <rhyme label="a" type="f">gedachten</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Om d'oude tijden te <rhyme label="a" type="f" corresp="#s5:l1">betrachten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Op dat ick dijne daden <rhyme label="b" type="m">merck</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">End denck by dagen end by <rhyme label="a" type="f" corresp="#s5:l1">nachten</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Aen dijner handen wonder <rhyme label="b" type="m" corresp="#s5:l3">werck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">In dese mijne sware <rhyme label="a" type="f">banden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Streck ick tot dywaert mijne <rhyme label="a" type="f" corresp="#s6:l1">handen</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Ick voel in desen harden <rhyme label="b" type="m">strijt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Mijn siel naer dy met ijver <rhyme label="a" type="f" corresp="#s6:l1">branden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Als d'aertrijck, dat van droochte <rhyme label="b" type="m" corresp="#s6:l3">splijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och haest dy, wil niet langher <rhyme label="a" type="f">wachten</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Oft anders moet my thert <rhyme label="a" type="f" corresp="#s7:l1">versmachten</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Verberg dijn aensicht van my <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Oft ick sal korts de gene <rhyme label="a" type="f" corresp="#s7:l1">slachten</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Heer, diemen int graf <rhyme label="b" type="m" corresp="#s7:l3">nederschiet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Doe my vroech hooren end <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dijn gunst: op dy, staet myn <rhyme label="a" type="f" corresp="#s8:l1">vertrouwen</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Vergun my, Heere, dat ick <rhyme label="b" type="m">tref</rhyme></l>
        <l id="s8:l4" met="4" type="-+">De rechte baen, die ick moet <rhyme label="a" type="f" corresp="#s8:l1">houwen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Want ick mijn siel tot dijwaerts <rhyme label="b" type="m" corresp="#s8:l3">hef</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O Heere God, tot wien ick <rhyme label="a" type="f">suchte</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Van mijnen vyant (dien ick <rhyme label="a" type="f" corresp="#s9:l1">duchte</rhyme>)</l>
        <l id="s9:l3" met="4" type="-+">Verloss my doir sijn stercke <rhyme label="b" type="m">cracht</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Want ick tot dijn genade <rhyme label="a" type="f" corresp="#s9:l1">vluchte</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">End my verlaet op dijne <rhyme label="b" type="m" corresp="#s9:l3">macht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wil mijn verstandt end hert <rhyme label="a" type="f">verlichten</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dat ick mach dijnen wil <rhyme label="a" type="f" corresp="#s10:l1">verrichten</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Du bist mijn God, wil my <rhyme label="b" type="m">voortaen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Met dijnen goeden geest vast <rhyme label="a" type="f" corresp="#s10:l1">stichten</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">End leyden op een effen <rhyme label="b" type="m" corresp="#s10:l3">baen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Verquick my tleven lieve <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">End maeck my doch gesont, ter <rhyme label="a" type="f" corresp="#s11:l1">eere</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Van dijnen Naem hoog ende <rhyme label="b" type="m">groot</rhyme>:</l>
        <l id="s11:l4" met="4" type="-+">Om dijns gerechticheyts wil, <rhyme label="a" type="f" corresp="#s11:l1">keere</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Mijn siel uyt allen anxt end <rhyme label="b" type="m" corresp="#s11:l3">noot</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Wil uyt goetgunsticheyt dy <rhyme label="a" type="f">spoeyen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Om mijnen vyandt uyt te <rhyme label="a" type="f" corresp="#s12:l1">roeyen</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Verderf het volck dat my <rhyme label="b" type="m">bevecht</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">End mijne siel brengt in <rhyme label="a" type="f" corresp="#s12:l1">vernoeyen</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Want ick ben dijn ootmoedich <rhyme label="b" type="m" corresp="#s12:l3">knecht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
