    <melody>Nadien uw goddelijkheid</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>M. van de Speybroek</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Syon mijn <rhyme label="a" type="m">vrienden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ick quam om u <rhyme label="a" type="m" corresp="#s1:l1">gewin</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Al uyt des Hemels <rhyme label="b" type="f">stede</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">En van mijns Vaders <rhyme label="c" type="m">Rijck</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Uyt liefden ick 't <rhyme label="b" type="f" corresp="#s1:l3">dede</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En wierde u <rhyme label="c" type="m" corresp="#s1:l4">ghelijck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick ben een Konings <rhyme label="a" type="m">Soon</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Al uyt den Hoogen <rhyme label="a" type="m" corresp="#s2:l1">Throon</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Van den Hemelschen <rhyme label="b" type="f">Vader</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Die eeuwigh was met <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En sullen te <rhyme label="b" type="f" corresp="#s2:l3">gader</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Noch blijven dat ick <rhyme label="c" type="m" corresp="#s2:l4">ben</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Syon edel <rhyme label="a" type="m">Jonck-vrouw</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ick bood' u aen mijn <rhyme label="a" type="m" corresp="#s3:l1">trouw</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Aen mijne handt <rhyme label="b" type="f">verheven</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">En heb u <rhyme label="c" type="m">toe-geseyt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Nimmermeer te <rhyme label="b" type="f" corresp="#s3:l3">begeven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Nu noch in <rhyme label="c" type="m" corresp="#s3:l4">eeuwigheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Doet als een reyne <rhyme label="a" type="m">Bruyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En hoort na geen <rhyme label="a" type="m" corresp="#s4:l1">geluyt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Van vreemde Minnaers <rhyme label="b" type="f">quade</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Dat ghy niet uyt en <rhyme label="c" type="m">gaet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Van mijn groote <rhyme label="b" type="f" corresp="#s4:l3">genade</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Daer ghy nu, Lief, in <rhyme label="c" type="m" corresp="#s4:l4">staet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Al mijn beloften <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ja, ende Amen <rhyme label="a" type="m" corresp="#s5:l1">fijn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En sullen alsoo <rhyme label="b" type="f">blijven</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Houdt ghy 't beloofde <rhyme label="c" type="m">woort</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ghy sult wel <rhyme label="b" type="f" corresp="#s5:l3">beklijven</rhyme></l>
        <l id="s5:l6" met="3" type="-+">In mijnder liefden <rhyme label="c" type="m" corresp="#s5:l4">voort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Al wordt ghy seer <rhyme label="a" type="m">gevrijt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Van haer die my <rhyme label="a" type="m" corresp="#s6:l1">benijt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En van mijn handt wilt <rhyme label="b" type="f">trecken</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">En geeft haer geen <rhyme label="c" type="m">gehoor</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ick sal haer wel <rhyme label="b" type="f" corresp="#s6:l3">begecken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Ten Lesten noch daer <rhyme label="c" type="m" corresp="#s6:l4">voor</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Als eenen <rhyme label="a" type="m">zegel-ring</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Heb ick u <rhyme label="a" type="m" corresp="#s7:l1">sonderling</rhyme></l>
        <l id="s7:l3" met="3" type="-+">In mijn herte <rhyme label="b" type="f">gesloten</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Ick denck altijt op <rhyme label="c" type="m">u</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Wat hebt gy al <rhyme label="b" type="f" corresp="#s7:l3">genoten</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Van mijnder liefden <rhyme label="c" type="m" corresp="#s7:l4">nu</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ick heb u eerst <rhyme label="a" type="m">gesocht</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Doen gy al laegt <rhyme label="a" type="m" corresp="#s8:l1">verkocht</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Onder het last der <rhyme label="b" type="f">sonden</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Ick quam u te <rhyme label="c" type="m">gemoet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En heb u <rhyme label="b" type="f" corresp="#s8:l3">gevonden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Onreyn al in u <rhyme label="c" type="m" corresp="#s8:l4">bloedt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Als een <rhyme label="a" type="m">Samaritaen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Quam ick tot u <rhyme label="a" type="m" corresp="#s9:l1">gegaen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En door <rhyme label="b" type="f">barmhertighede</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Mijn hert alsoo <rhyme label="c" type="m">ontstack</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Doen ick quam by de <rhyme label="b" type="f" corresp="#s9:l3">stede</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Al van u <rhyme label="c" type="m" corresp="#s9:l4">ongemack</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Mijn edel lichaem <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Heb ick tot een <rhyme label="a" type="m" corresp="#s10:l1">behoedt</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Voor u gestelt te <rhyme label="b" type="f">pande</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">En des duyvels <rhyme label="c" type="m">gewelt</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Daer gy laegt in sijn <rhyme label="b" type="f" corresp="#s10:l3">banden</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Geheel ter neer <rhyme label="c" type="m" corresp="#s10:l4">gevelt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Mijn Vader die <rhyme label="a" type="m">zandt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">My in het Aerdsche <rhyme label="a" type="m" corresp="#s11:l1">landt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Om u Bruyt te <rhyme label="b" type="f">versoecken</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">Maer doen ick daer in <rhyme label="c" type="m">quam</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">En leerd' uyt sijn <rhyme label="b" type="f" corresp="#s11:l3">boecken</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Waren sy op my <rhyme label="c" type="m" corresp="#s11:l4">gram</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Die my ontfingen <rhyme label="a" type="m">daer</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Die gaf ick <rhyme label="a" type="m" corresp="#s12:l1">alle-gaer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Eenen anderen <rhyme label="b" type="f">name</rhyme>;</l>
        <l id="s12:l4" met="3" type="-+">Dan sy hadden <rhyme label="c" type="m">gehadt</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">En ick maeck haer <rhyme label="b" type="f" corresp="#s12:l3">bequame</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Tot Borgers van mijn <rhyme label="c" type="m" corresp="#s12:l4">Stadt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Eer dat ick trock van <rhyme label="a" type="m">daen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Soo deed' ick een <rhyme label="a" type="m" corresp="#s13:l1">vermaen</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Van u, aen ander <rhyme label="b" type="f">knechten</rhyme>:</l>
        <l id="s13:l4" met="3" type="-+">Die ick hebbe <rhyme label="c" type="m">belast</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">U te brengen ten <rhyme label="b" type="f" corresp="#s13:l3">rechten</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Tot dat gy komt te <rhyme label="c" type="m" corresp="#s13:l4">gast</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Ick Prins den <rhyme label="a" type="m">Bruydegom</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Gy zijt my <rhyme label="a" type="m" corresp="#s14:l1">willekom</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Al in mijns Vaders <rhyme label="b" type="f">Rijcke</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">Daer sal ick u tot <rhyme label="c" type="m">loon</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Geven alle <rhyme label="b" type="f" corresp="#s14:l3">gelijcke</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Al voor de Trou de <rhyme label="c" type="m" corresp="#s14:l4">Kroon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
