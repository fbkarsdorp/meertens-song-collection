  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">DE Toorn van Babel rees met sijnen <rhyme label="a" type="m">kruyn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Tot boven Bergh en <rhyme label="a" type="m" corresp="#s1:l1">Duyn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ja had licht door het driftigh <rhyme label="a" type="m" corresp="#s1:l1">bruyn</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Sijn spitse top noch op <rhyme label="b" type="f">gesteecken</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Had maer <rhyme label="c" type="m">voortaen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Het arbeydts-volck, malkaer in't <rhyme label="b" type="f" corresp="#s1:l4">spreecken</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Te recht <rhyme label="c" type="m" corresp="#s1:l5">verstaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Maer doen de Tael in velen was <rhyme label="a" type="m">gedeylt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Is dien aenslach <rhyme label="a" type="m" corresp="#s2:l1">gefeylt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En 'twerck als Roereloos <rhyme label="a" type="m" corresp="#s2:l1">verseylt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">'tBleef onvolmaeckt, en streckt een <rhyme label="b" type="f">teecken</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Van't trots <rhyme label="c" type="m">opset</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Om namaels noch daer van te <rhyme label="b" type="f" corresp="#s2:l4">spreecken</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Hoe 't wort <rhyme label="c" type="m" corresp="#s2:l5">belet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Hier siet een schrander Oogh de Eendracht <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Waer door de dinghen <rhyme label="a" type="m" corresp="#s3:l1">gaen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Tot haer volmaecktheydt: maer zy <rhyme label="a" type="m" corresp="#s3:l1">staen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ja deysen weer, wanneer <rhyme label="b" type="f">krackelen</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Daer komen <rhyme label="c" type="m">by</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Hoe vasten staet, het sal <rhyme label="b" type="f" corresp="#s3:l4">verdelen</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Daer onvreed' <rhyme label="c" type="m" corresp="#s3:l5">zy</rhyme>.</l>
      </lg>
    </lg>
  </text>
