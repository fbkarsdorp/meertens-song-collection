  <author>Herman Harts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">IN het midden van de <rhyme label="a" type="m">nacht</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Soo my docht, niet <rhyme label="a" type="m" corresp="#s1:l1">onbedacht</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Ick hoorde een ziele <rhyme label="b" type="f">kermen</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">O fel Doot! ô tweede <rhyme label="c" type="m">Doot</rhyme>!</l>
        <l id="s1:l5" met="4" type="+-">En mach ons niemandt <rhyme label="b" type="f" corresp="#s1:l3">ontfermen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Ah! dees straf is al te <rhyme label="c" type="m" corresp="#s1:l4">groot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Och! wat ongeluckigh <rhyme label="a" type="m">Lodt</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En wat Tornichyt van <rhyme label="a" type="m" corresp="#s2:l1">Godt</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Heeft ons ellendich <rhyme label="b" type="f">bevangen</rhyme>?</l>
        <l id="s2:l4" met="4" type="+-">VV'en gevoelen niet, dan <rhyme label="c" type="m">haet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">VV'en hopen, noch en <rhyme label="b" type="f" corresp="#s2:l3">verlangen</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">VVy syn geversticht in 't <rhyme label="c" type="m" corresp="#s2:l4">quaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zy vervloeckt dan die daer <rhyme label="a" type="m">leeft</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Ah! Die ons geschapen <rhyme label="a" type="m" corresp="#s3:l1">heeft</rhyme>!</l>
        <l id="s3:l3" met="4" type="+-">Zy vervloeckt Vader, en <rhyme label="b" type="f">Moeder</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Zy vervloeckt Son ende <rhyme label="c" type="m">Maen</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Gaet seght dit Suster, en <rhyme label="b" type="f" corresp="#s3:l3">Broeder</rhyme>.</l>
        <l id="s3:l6" met="4" type="+-">Och! waren wy jonck <rhyme label="c" type="m" corresp="#s3:l4">vergaen</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wy achten ter werelt <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dan 't ghene de Ooge <rhyme label="a" type="m" corresp="#s4:l1">siet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Eer, ryckdom, ende <rhyme label="b" type="f">wellusten</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Die maer en syn aen 't <rhyme label="c" type="m">gemoet</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">As slaven, die henen <rhyme label="b" type="f" corresp="#s4:l3">vluchten</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En stelen haer Meesters <rhyme label="c" type="m" corresp="#s4:l4">goet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">d VVy hebben ons seer <rhyme label="a" type="m">gespoeyt</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Tot alle lust, en <rhyme label="a" type="m" corresp="#s5:l1">vermoeyt</rhyme></l>
        <l id="s5:l3" met="4" type="+-">In de wegen der <rhyme label="b" type="f">boosheden</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">VVat verdriet ey! wat <rhyme label="c" type="m">torment</rhyme>!</l>
        <l id="s5:l5" met="4" type="+-">O gewicht der <rhyme label="b" type="f" corresp="#s5:l3">Eeuwicheden</rhyme>!</l>
        <l id="s5:l6" met="4" type="+-">VVy lyden nu sonder <rhyme label="c" type="m" corresp="#s5:l4">ent'</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">O! bedriegelycke <rhyme label="a" type="m">Mert</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Des werelts, vol soete <rhyme label="a" type="m" corresp="#s6:l1">smert</rhyme>!</l>
        <l id="s6:l3" met="4" type="+-">Hoe f'nynigh syn uwe <rhyme label="b" type="f">Beken</rhyme>!</l>
        <l id="s6:l4" met="4" type="+-">Als genoch leert <rhyme label="c" type="m">Absolon</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Met dry lancien <rhyme label="b" type="f" corresp="#s6:l3">doorsteken</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">In het aensien van de <rhyme label="c" type="m" corresp="#s6:l4">Son</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hy meynde de doot <rhyme label="a" type="m">t'ontgaen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Maer de Muyl liep heen de <rhyme label="a" type="m" corresp="#s7:l1">baen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En hy bleef aen de boom <rhyme label="b" type="f">hangen</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Soo is het geschiet met <rhyme label="c" type="m">ons</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">O Dwaes! Die noch blyft <rhyme label="b" type="f" corresp="#s7:l3">verhangen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Aen iet dat vergaet <rhyme label="c" type="m" corresp="#s7:l4">terstons</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">VVy hadden 't in leven <rhyme label="a" type="m">wel</rhyme>:</l>
        <l id="s8:l2" met="4" type="+-">Maer nu hoe quaet in de <rhyme label="a" type="m" corresp="#s8:l1">hel</rhyme>!</l>
        <l id="s8:l3" met="4" type="+-">Onse pleisieren syn <rhyme label="b" type="f">henen</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">De worm, die nimmer en <rhyme label="c" type="m">sterf</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Blyft alleen, de rest <rhyme label="b" type="f" corresp="#s8:l3">verdwenen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Gy wellust fyt ons <rhyme label="c" type="m" corresp="#s8:l4">verderf</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Hoe bedachter syn <rhyme label="a" type="m">geweest</rhyme>!</l>
        <l id="s9:l2" met="4" type="+-">Die nu in de <rhyme label="a" type="m" corresp="#s9:l1">Bruylof-feest</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Goe Ciere maken. VVy <rhyme label="b" type="f">quelden</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">En hielen met hen de <rhyme label="c" type="m">geck</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Die nu staen in eer, en <rhyme label="b" type="f" corresp="#s9:l3">welden</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">En wy in schand', en <rhyme label="c" type="m" corresp="#s9:l4">gebreck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Voor de genucht van een <rhyme label="a" type="m">uur</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Te smaken dit eeuwich <rhyme label="a" type="m" corresp="#s10:l1">suur</rhyme>!</l>
        <l id="s10:l3" met="4" type="+-">O Vonnis sonder <rhyme label="b" type="f">berouwen</rhyme>!</l>
        <l id="s10:l4" met="4" type="+-">VVy derven ah! 't eeuwich <rhyme label="c" type="m">Goet</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Vol droefheyt ende <rhyme label="b" type="f" corresp="#s10:l3">mistrouwen</rhyme>.</l>
        <l id="s10:l6" met="4" type="+-">En altoos! ô <rhyme label="c" type="m" corresp="#s10:l4">tegenspoet</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Siet! hier en is niet dan <rhyme label="a" type="m">rouw</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">O! wat een hitt! wat een <rhyme label="a" type="m" corresp="#s11:l1">kouw</rhyme>!</l>
        <l id="s11:l3" met="4" type="+-">'t Geselschap syn quade <rhyme label="b" type="f">Geesten</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Vol gewelt, en <rhyme label="c" type="m">hatenyt</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Och! waren wy geweest <rhyme label="b" type="f" corresp="#s11:l3">beesten</rhyme>!</l>
        <l id="s11:l6" met="4" type="+-">VV'en leden nu geen <rhyme label="c" type="m" corresp="#s11:l4">verwyt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Maer wat helpt al dit <rhyme label="a" type="m">gesegh</rhyme>?</l>
        <l id="s12:l2" met="4" type="+-">Den tyt, ah! den tyt is <rhyme label="a" type="m" corresp="#s12:l1">wegh</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">'t Is gedaen, 't is al <rhyme label="b" type="f">verloren</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Ons Balanze te licht <rhyme label="c" type="m">weeght</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Och! waren wy noyt <rhyme label="b" type="f" corresp="#s12:l3">geboren</rhyme>!</l>
        <l id="s12:l6" met="4" type="+-">Den Rechter blyft <rhyme label="c" type="m" corresp="#s12:l4">onbeweêght</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Dat maer hondert dusendt <rhyme label="a" type="m">jaer</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Of thien hondert dusendt <rhyme label="a" type="m" corresp="#s13:l1">waer</rhyme>:</l>
        <l id="s13:l3" met="4" type="+-">Ja soo veel miljone <rhyme label="b" type="f">jaren</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Als druppels syn in de <rhyme label="c" type="m">Zee</rhyme>!</l>
        <l id="s13:l5" met="4" type="+-">VV'en maeckten dus een <rhyme label="b" type="f" corresp="#s13:l3">misbaren</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Maer eeuwich is onse <rhyme label="c" type="m" corresp="#s13:l4">wee</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Eeuwichyt! ô! <rhyme label="a" type="m">Eeuwichyt</rhyme>!</l>
        <l id="s14:l2" met="4" type="+-">Hoe verschilt gy van den <rhyme label="a" type="m" corresp="#s14:l1">tyt</rhyme>!</l>
        <l id="s14:l3" met="4" type="+-">VVy sterven, maer sonder <rhyme label="b" type="f">sterven</rhyme>.</l>
        <l id="s14:l4" met="4" type="+-">Soo lange Godt Godt sal <rhyme label="c" type="m">syn</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">En sullen wy niet <rhyme label="b" type="f" corresp="#s14:l3">bederven</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Nochtans verdorven. O! <rhyme label="c" type="m" corresp="#s14:l4">pyn</rhyme>!</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Soo kermde die erme <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">VVanneer my de slaep <rhyme label="a" type="m" corresp="#s15:l1">ontviel</rhyme>:</l>
        <l id="s15:l3" met="4" type="+-">Al myne leden die <rhyme label="b" type="f">beefden</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">VVanneer op die pynen <rhyme label="c" type="m">dacht</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">Der gene, die onlancx <rhyme label="b" type="f" corresp="#s15:l3">leefden</rhyme>.</l>
        <l id="s15:l6" met="4" type="+-">O! Mensch u van sonde <rhyme label="c" type="m" corresp="#s15:l4">wacht</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Of syde daer in <rhyme label="a" type="m">geraeckt</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Spoedt, eer de door <rhyme label="a" type="m" corresp="#s16:l1">genaeckt</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Spoedt u, en leert Godt <rhyme label="b" type="f">voorkomen</rhyme></l>
        <l id="s16:l4" met="4" type="+-">In ware <rhyme label="c" type="m">Belydenis</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">En schouwen voor't quaet. VVelck <rhyme label="b" type="f" corresp="#s16:l3">Omen</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Brenght volle <rhyme label="c" type="m" corresp="#s16:l4">versekernis</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
