    <melody>O bloeiende jeugd notabel wijs van zinnen</melody>
    <categories>
      <category translation="emotions">emoties</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Christus kercke <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wilt v <rhyme label="b" type="f">veriubileren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Hebt goeden <rhyme label="a" type="m" corresp="#s1:l1">moet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Al wiltmen v <rhyme label="b" type="f" corresp="#s1:l2">persequeren</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Al is uwer vyanden groot <rhyme label="c" type="m">ghetal</rhyme></l>
        <l id="s1:l6" met="4" type="-+">U capiteyn domineert bouen <rhyme label="c" type="m" corresp="#s1:l5">al</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hy sal wel <rhyme label="d" type="f">optineren</rhyme></l>
        <l id="s1:l8" met="4" type="-+">En brenghen zijn vyanden in den <rhyme label="e" type="m">val</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Al maken sy noch so groot <rhyme label="e" type="m" corresp="#s1:l8">gheschal</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Sy moeten <rhyme label="d" type="f" corresp="#s1:l7">reculeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O dochter van <rhyme label="a" type="m">Syon</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Maeckt vruecht wilt <rhyme label="b" type="f">triumpheren</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Want v vrome <rhyme label="a" type="m" corresp="#s2:l1">campioen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die koemt v <rhyme label="b" type="f" corresp="#s2:l2">assisteren</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Hy koemt saechtmoedich en soet <rhyme label="c" type="m">ghesint</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Die wijse koninck die v <rhyme label="c" type="m" corresp="#s2:l5">bemint</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Wilt v tot hem waerts <rhyme label="d" type="f">keeren</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Want al dat hy heeft zijn vleesch en <rhyme label="e" type="m">bloet</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Coemt hy ons schencken wt liefden <rhyme label="e" type="m" corresp="#s2:l8">goet</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Om te ghenesen onse <rhyme label="d" type="f" corresp="#s2:l7">seeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O roose van <rhyme label="a" type="m">Iericho</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ghy zijt Christus bruyt <rhyme label="b" type="f">eersame</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Uerhuecht en weest nv <rhyme label="a" type="m" corresp="#s3:l1">vro</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Want goet is uwe <rhyme label="b" type="f" corresp="#s3:l2">fame</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Ende die v beurijt <rhyme label="c" type="m">coragieus</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Ende van v seer <rhyme label="c" type="m" corresp="#s3:l5">amoreus</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Want gheheel zijn <rhyme label="d" type="f">lichame</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Heeft hy voor ons te pande <rhyme label="e" type="m">ghestelt</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Wy en zijn ghekocht met gout noch met <rhyme label="e" type="m" corresp="#s3:l8">ghelt</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Maer met zijn bloet <rhyme label="d" type="f" corresp="#s3:l7">bequame</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O Lelie die inde doornen <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En wilt v niet <rhyme label="b" type="f">versaghen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Al zijn die dorens <rhyme label="a" type="m" corresp="#s4:l1">quaet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En wilter niet na <rhyme label="b" type="f" corresp="#s4:l2">vraghen</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Al doen v die menschen gheen <rhyme label="c" type="m">onderstant</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Ons koninck sorcht aen elcken <rhyme label="c" type="m" corresp="#s4:l5">kant</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Uoor alle die zijn <rhyme label="d" type="f">beladen</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Want ghelijck een moeder is <rhyme label="e" type="m">ghesint</rhyme></l>
        <l id="s4:l9" met="4" type="-+">Om te bewaren haer eyghen <rhyme label="e" type="m" corresp="#s4:l8">kint</rhyme></l>
        <l id="s4:l10" met="3" type="-+">So sal hy sorghe voor ons <rhyme label="d" type="f" corresp="#s4:l7">draghen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Prince van <rhyme label="a" type="m">Israel</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ierusalem van Gode <rhyme label="b" type="f">vercoren</rhyme></l>
        <l id="s5:l3" met="3" type="-+">En sorcht voor gheen <rhyme label="a" type="m" corresp="#s5:l1">ghequel</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Want v koninck sal v <rhyme label="b" type="f" corresp="#s5:l2">aenhooren</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Roept tot hem als ghy zijt <rhyme label="c" type="m">beswaert</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Want gelijck een hinne haer kiecxkens <rhyme label="c" type="m" corresp="#s5:l5">bewaert</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Al voor der wouwen <rhyme label="d" type="f">sporen</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Also heeft hy ons dicwils <rhyme label="e" type="m">beurijt</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Uoor al die ons hebben <rhyme label="e" type="m" corresp="#s5:l8">benijt</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Alst blijet in Pharaons <rhyme label="d" type="f" corresp="#s5:l7">versmoren</rhyme>.</l>
      </lg>
    </lg>
  </text>
