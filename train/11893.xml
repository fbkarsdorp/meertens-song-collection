      <category translation="religion">godsdienst</category>
    </categories>
  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIlt g'u leven recht <rhyme label="a" type="f">verand'ren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Soo is't nodigh dat ghy <rhyme label="b" type="m">ledt</rhyme></l>
        <l id="s1:l3" met="4" type="+-">op de Goddelijcke <rhyme label="b" type="m" corresp="#s1:l2">Wet</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">U, van Christo, als oock <rhyme label="a" type="f" corresp="#s1:l1">and'ren</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Voorgheset, waer in hy <rhyme label="c" type="m">leerdt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Hoe een sondaer sigh <rhyme label="c" type="m" corresp="#s1:l5">bekeerdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Soose zijn, niet soose <rhyme label="a" type="f">schijnen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Overleght u sonden <rhyme label="b" type="m">quaet</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Wie de sonden recht <rhyme label="b" type="m" corresp="#s2:l2">verstaet</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Sal die haestigh doen <rhyme label="a" type="f" corresp="#s2:l1">verdwijnen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Sonden aen te sien als <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Geeft tot quaet een vaste <rhyme label="c" type="m" corresp="#s2:l5">voet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Stelt u selven klaer voor <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Vwes Heeren <rhyme label="b" type="m">Majesteyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En sijn suyv're <rhyme label="b" type="m" corresp="#s3:l2">Heyligheyt</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Welckers dienst gh' u hebt <rhyme label="a" type="f" corresp="#s3:l1">ontoogen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Door u <rhyme label="c" type="m">ongehoorsaemheyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Die van 't rechte padt <rhyme label="c" type="m" corresp="#s3:l5">afleyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Overweeght Gods trouwe <rhyme label="a" type="f">daden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Banden van <rhyme label="b" type="m">gedienstigheyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En oprechte <rhyme label="b" type="m" corresp="#s4:l2">heyligheyt</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Daer en boven <rhyme label="a" type="f" corresp="#s4:l1">d'ongenaden</rhyme></l>
        <l id="s4:l5" met="4" type="+-">En verbolgentheyt <rhyme label="c" type="m">gedreycht</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Dien, wiens hert tot sonden <rhyme label="c" type="m" corresp="#s4:l5">neycht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Denck, dat sonden u <rhyme label="a" type="f">berooven</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Van al 't Goddelijcke <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Toegeseyt een Vroom <rhyme label="b" type="m" corresp="#s5:l2">gemoet</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">En met eenen wilt <rhyme label="a" type="f" corresp="#s5:l1">gelooven</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Dat de sonde na den <rhyme label="c" type="m">Geest</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Schaet ons naesten, doch ons <rhyme label="c" type="m" corresp="#s5:l5">meest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wilt gedencken wat voor <rhyme label="a" type="f">wonden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Wat versmaetheyt, dat wel <rhyme label="b" type="m">eer</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Heeft geleden onsen <rhyme label="b" type="m" corresp="#s6:l2">Heer</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Om u van 't venijn der <rhyme label="a" type="f" corresp="#s6:l1">sonden</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Gantsch te suyv'ren; op dat <rhyme label="c" type="m">ghy</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Wesen soud van sonden <rhyme label="c" type="m" corresp="#s6:l5">vry</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Acht de deucht voor soo een <rhyme label="a" type="f">saecke</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Die gantsch noodigh is, om <rhyme label="b" type="m">God</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Dienst te doen na sijn <rhyme label="b" type="m" corresp="#s7:l2">gebod</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">En om tot sijn vreucht te <rhyme label="a" type="f" corresp="#s7:l1">raecke</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Die geen vree noch <rhyme label="c" type="m">heylicheyt</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Heeft, Gods vreughde wert <rhyme label="c" type="m" corresp="#s7:l5">ontseyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Wilt u sonden niet <rhyme label="a" type="f">bedecken</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Noch verschoonen voor den <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Vwen God; maer wilt veel <rhyme label="b" type="m" corresp="#s8:l2">eer</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Hert en ziel voor God <rhyme label="a" type="f" corresp="#s8:l1">uytstrecken</rhyme>;</l>
        <l id="s8:l5" met="4" type="+-">En belijt uyt 's herten <rhyme label="c" type="m">gront</rhyme></l>
        <l id="s8:l6" met="4" type="+-">V bedreven quaet of <rhyme label="c" type="m" corresp="#s8:l5">sont</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Het bekennen onser <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Voor Gods Allerhooghsten <rhyme label="b" type="m">throon</rhyme></l>
        <l id="s9:l3" met="4" type="+-">En sijn wel-beminden <rhyme label="b" type="m" corresp="#s9:l2">Soon</rhyme>;</l>
        <l id="s9:l4" met="4" type="+-">Geeft ons Schepper t'allen <rhyme label="a" type="f" corresp="#s9:l1">stonden</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Eer en loff; als die <rhyme label="c" type="m">vergeeft</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">'t Geen ons vleesch ghesondight <rhyme label="c" type="m" corresp="#s9:l5">heeft</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Inden mensche sal 't <rhyme label="a" type="f">ontsteecken</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Schaemt van wegen 't quaet, en't <rhyme label="b" type="m">maeckt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Dat hy licht sich selven <rhyme label="b" type="m" corresp="#s10:l2">wraeckt</rhyme>.</l>
        <l id="s10:l4" met="4" type="+-">Dat hy alle sijn <rhyme label="a" type="f" corresp="#s10:l1">gebreecken</rhyme></l>
        <l id="s10:l5" met="4" type="+-">Sich toe-eygent, niet den <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Die van sonden heeft <rhyme label="c" type="m" corresp="#s10:l5">afkeer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Door't gelooff moet hy <rhyme label="a" type="f">begeeren</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Van sijn God, den Geest, op <rhyme label="b" type="m">dat</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Hy sich vanden vuylen <rhyme label="b" type="m" corresp="#s11:l2">schat</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Sijner sonden magh <rhyme label="a" type="f" corresp="#s11:l1">bekeeren</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Wie Gods segen niet <rhyme label="c" type="m">begeert</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Noyt ten rechten wert <rhyme label="c" type="m" corresp="#s11:l5">bekeert</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Als hy heeft Gods Geest <rhyme label="a" type="f">verkregen</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Moet hy mijden al wat <rhyme label="b" type="m">quaet</rhyme></l>
        <l id="s12:l3" met="4" type="+-">Is, met tongh en hert en <rhyme label="b" type="m" corresp="#s12:l2">daet</rhyme>.</l>
        <l id="s12:l4" met="4" type="+-">Moet sich houden aen Gods <rhyme label="a" type="f" corresp="#s12:l1">weghen</rhyme></l>
        <l id="s12:l5" met="4" type="+-">Ja vermijden wat in <rhyme label="c" type="m">schijn</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Voor de menschen quaet mocht <rhyme label="c" type="m" corresp="#s12:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Van het quaet by hem <rhyme label="a" type="f">bedreven</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Moet hy walgen, en <rhyme label="b" type="m">voortaen</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Op des Heeren wegen <rhyme label="b" type="m" corresp="#s13:l2">gaen</rhyme>.</l>
        <l id="s13:l4" met="4" type="+-">Sich weerom tot quaet <rhyme label="a" type="f" corresp="#s13:l1">begeven</rhyme></l>
        <l id="s13:l5" met="4" type="+-">Na 't berouw der sonden, <rhyme label="c" type="m">is</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Bron van meer <rhyme label="c" type="m" corresp="#s13:l5">verdoemenis</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">In het goet voornemen, moet <rhyme label="a" type="f">ghy</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Gantsch volharden, by 't <rhyme label="b" type="m">opset</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Kome t'doen van 's Heeren <rhyme label="b" type="m" corresp="#s14:l2">Wet</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Of een beter leven; doet <rhyme label="a" type="f" corresp="#s14:l1">ghy</rhyme></l>
        <l id="s14:l5" met="4" type="+-">Anders, het vergeven <rhyme label="c" type="m">quaet</rhyme></l>
        <l id="s14:l6" met="4" type="+-">Om het nieuwe u niet <rhyme label="c" type="m" corresp="#s14:l5">baet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">God vergeeft de mensch geen <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Dan alleen met dit <rhyme label="b" type="m">bedingh</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Als sy vanden  <rhyme label="b" type="m" corresp="#s15:l2">ommeringh</rhyme></l>
        <l id="s15:l4" met="4" type="+-">Harer sonden zijn <rhyme label="a" type="f" corresp="#s15:l1">ontwonden</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">Gaet ghy in u sonden <rhyme label="c" type="m">voort</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Blijft op u de Heer <rhyme label="c" type="m" corresp="#s15:l5">verstoort</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">'t Geen hy een-mael heeft <rhyme label="a" type="f">vergeven</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Sal hy weder-roepen; <rhyme label="b" type="m">want</rhyme></l>
        <l id="s16:l3" met="4" type="+-">Ghy blijft in u ouden <rhyme label="b" type="m" corresp="#s16:l2">stant</rhyme>:</l>
        <l id="s16:l4" met="4" type="+-">Ghy geen daad'lijck blijck, kond <rhyme label="a" type="f" corresp="#s16:l1">gheven</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">Dat g' u daer toe hebt <rhyme label="c" type="m">bereydt</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Waer op Godt sijn gunst <rhyme label="c" type="m" corresp="#s16:l5">toeseydt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Ider dan, die heeft <rhyme label="a" type="f">verlangen</rhyme></l>
        <l id="s17:l2" met="4" type="+-">Om vergevingh van sijn <rhyme label="b" type="m">daet</rhyme></l>
        <l id="s17:l3" met="4" type="+-">(Die en ziel en Lichaem <rhyme label="b" type="m" corresp="#s17:l2">schaet</rhyme>)</l>
        <l id="s17:l4" met="4" type="+-">Vanden goeden Godt t' <rhyme label="a" type="f" corresp="#s17:l1">ontfanghen</rhyme>,</l>
        <l id="s17:l5" met="4" type="+-">Sich bekeer, en in het <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s17:l6" met="4" type="+-">Houde staagh een vaste <rhyme label="c" type="m" corresp="#s17:l5">voet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
