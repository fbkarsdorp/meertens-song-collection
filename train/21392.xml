<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21392</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Mijn God waar zal ik heengaan</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ONtfangt een nieu liedeken <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Maechdekens ionck van <rhyme label="b" type="f">Jaren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ic wensch v een verstandich <rhyme label="a" type="m" corresp="#s1:l1">ghemoet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Wilt in gods vrese voort <rhyme label="b" type="f" corresp="#s1:l2">varen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Dat is een beginsel der <rhyme label="c" type="m">wijsheyt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Wort niet van dese werelt <rhyme label="c" type="m" corresp="#s1:l5">verleyt</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Op dat ghy niet met haer en <rhyme label="c" type="m" corresp="#s1:l5">schreijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Denct dat die werelt sal <rhyme label="a" type="m">vergaen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met al haer lusten <rhyme label="b" type="f">verheuen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Maer die gods wille heeft <rhyme label="a" type="m" corresp="#s2:l1">voldaen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die sullen eewich <rhyme label="b" type="f" corresp="#s2:l2">leuen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Die schaduwe deser werelt <rhyme label="c" type="m">mijt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Op dat ghy moecht na desen <rhyme label="c" type="m" corresp="#s2:l5">tijt</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Worden ghecleet met witte <rhyme label="c" type="m" corresp="#s2:l5">sijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die kinderkens weten goet noch <rhyme label="a" type="m">quaet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat rijcke Gods is haer <rhyme label="b" type="f">eeghen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Maer als die kintheyt dan <rhyme label="a" type="m" corresp="#s3:l1">vergaet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Moetmen Gods wille <rhyme label="b" type="f" corresp="#s3:l2">pleghen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Wie loogenen handelt ende <rhyme label="c" type="m">grouwoel</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Haer deel is in den vierighen <rhyme label="c" type="m" corresp="#s3:l5">poel</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Daer niet en is eenich <rhyme label="c" type="m" corresp="#s3:l5">vercoel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Doet na het ghene dat ghy <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Laet v toch <rhyme label="b" type="f">informeeren</rhyme></l>
        <l id="s4:l3" met="4" type="-+">V Ouders weest <rhyme label="a" type="m" corresp="#s4:l1">obedient</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wilt vader ende moeder <rhyme label="b" type="f" corresp="#s4:l2">eeren</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Wie den Heere vreest nae Syrachs <rhyme label="c" type="m">leer</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Die vresen haer ouders als den <rhyme label="c" type="m" corresp="#s4:l5">heer</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Met woorden en met wercken <rhyme label="c" type="m" corresp="#s4:l5">seer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ham heeft zijn Vader niet <rhyme label="a" type="m">gheeert</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Doen hy hem bloot sach <rhyme label="b" type="f">leggen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Ghelijck als een die daer <rhyme label="a" type="m" corresp="#s5:l1">blameert</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ginck hijt zijn Broeders <rhyme label="b" type="f" corresp="#s5:l2">seggen</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Sy hebben hem decksel <rhyme label="c" type="m">opghelecht</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Ham most so die schriftuere <rhyme label="c" type="m" corresp="#s5:l5">seght</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Daerom wesen zijn broeders <rhyme label="c" type="m" corresp="#s5:l5">knecht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Isaac niet weder spannich en <rhyme label="a" type="m">was</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Een offerhande te <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Gheen wederspreecken op dat <rhyme label="a" type="m" corresp="#s6:l1">pas</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En hoor ick van hem <rhyme label="b" type="f" corresp="#s6:l2">lesen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Het schijnt of hy wel was <rhyme label="c" type="m">bereyt</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Die heer aensach <rhyme label="c" type="m" corresp="#s6:l5">ghehoorsaemheyt</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Den Engel hielt tsweert sonder <rhyme label="c" type="m" corresp="#s6:l5">verbeyt</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Doen godt ghehoorsaemheit <rhyme label="a" type="m">aensach</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Woude hy den Jonghelinck <rhyme label="b" type="f">sparen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Een Ram so men te offeren <rhyme label="a" type="m" corresp="#s7:l1">plach</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Liet godt daer <rhyme label="b" type="f" corresp="#s7:l2">openbaren</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Gheoffert in Isaacks plaetse <rhyme label="c" type="m">alleyn</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Die heer liet hem zijn leuen <rhyme label="c" type="m" corresp="#s7:l5">pleyn</rhyme></l>
        <l id="s7:l7" met="4" type="-+">En heeft ontfangen den offer <rhyme label="c" type="m" corresp="#s7:l5">reyn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Jacobs soon Daan en was niet <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Sijn vader seyde hem het <rhyme label="b" type="f">quaden</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Hy sprack Daan sal een Slange <rhyme label="a" type="m" corresp="#s8:l1">zijn</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Een Adder inden <rhyme label="b" type="f" corresp="#s8:l2">paden</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Aenmerckt wat die schriftuere <rhyme label="c" type="m">bediet</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Hy staet by die gheteyckende <rhyme label="c" type="m" corresp="#s8:l5">niet</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Int seuende Apocalipsi <rhyme label="c" type="m" corresp="#s8:l5">siet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Absalon heeft benout zijn <rhyme label="a" type="m">vaer</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Dat is hem niet wel <rhyme label="b" type="f">vergangen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Hy is al met zijn schoone <rhyme label="a" type="m" corresp="#s9:l1">haer</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Aen eenen boom blijuen <rhyme label="b" type="f" corresp="#s9:l2">hanghen</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Ende worde ghewont al totter <rhyme label="c" type="m">doot</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Aenmerckt dese straffinghe <rhyme label="c" type="m" corresp="#s9:l5">groot</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Den kinderen een exempel <rhyme label="c" type="m" corresp="#s9:l5">bloot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Christus heeft onderdanich <rhyme label="a" type="m">geweest</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Doen hy sadt inden <rhyme label="b" type="f">Tempel</rhyme></l>
        <l id="s10:l3" met="4" type="-+">By den gheleerden so men <rhyme label="a" type="m" corresp="#s10:l1">leest</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Ghy kinderen neemt een <rhyme label="b" type="f" corresp="#s10:l2">exempel</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Maer hy quam daer toch wel op <rhyme label="c" type="m">acht</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Hy ginck met haer sonder <rhyme label="c" type="m" corresp="#s10:l5">tweedracht</rhyme></l>
        <l id="s10:l7" met="4" type="-+">Maer hy most wesen seyde hy <rhyme label="c" type="m" corresp="#s10:l5">sacht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ghy kinderen spiegelt v aen <rhyme label="a" type="m">hem</rhyme></l>
        <l id="s11:l2" met="3" type="-+">So moecht ghy Godt <rhyme label="b" type="f">behaghen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Hoort altijt nae v Ouders <rhyme label="a" type="m" corresp="#s11:l1">stem</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Die garen duecht van v <rhyme label="b" type="f" corresp="#s11:l2">saghen</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Wie zijn Ouders niet en <rhyme label="c" type="m">hoort</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Die doen al tegen Godes <rhyme label="c" type="m" corresp="#s11:l5">woort</rhyme></l>
        <l id="s11:l7" met="4" type="-+">Sy loopen nae der hellen <rhyme label="c" type="m" corresp="#s11:l5">poort</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Een vader die noch is <rhyme label="a" type="m">verblint</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Die leyt zijn kint ter <rhyme label="b" type="f">hellen</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Die sommige zijn haeft gram <rhyme label="a" type="m" corresp="#s12:l1">ghesint</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Dat si haer wreet aen <rhyme label="b" type="f" corresp="#s12:l2">stellen</rhyme></l>
        <l id="s12:l5" met="4" type="-+">En gaen na dat verdoemen <rhyme label="c" type="m">toe</rhyme></l>
        <l id="s12:l6" met="4" type="-+">Hoe wel gheschiet haer so ick <rhyme label="c" type="m" corresp="#s12:l5">beuroe</rhyme></l>
        <l id="s12:l7" met="4" type="-+">Die hier opworden gheuoet int <rhyme label="c" type="m" corresp="#s12:l5">goe</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hier mee groet ic v o ionghe <rhyme label="a" type="m">ieucht</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Laet v toch <rhyme label="b" type="f">onderwijsen</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Op dat ghy in die eewighe <rhyme label="a" type="m" corresp="#s13:l1">vruecht</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Met Christus moecht <rhyme label="b" type="f" corresp="#s13:l2">logijsen</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Schout dese werelt boos <rhyme label="c" type="m">rebel</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Die Heer wil v bewaren <rhyme label="c" type="m" corresp="#s13:l5">wel</rhyme></l>
        <l id="s13:l7" met="4" type="-+">Voor alle stoutheeden so is die <rhyme label="c" type="m" corresp="#s13:l5">hel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
