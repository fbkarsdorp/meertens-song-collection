    <melody>Het daagt in de oosten</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author>C. Rhijnenburgh</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hoe ras vergaen de <rhyme label="a" type="f">Iaren</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Hoe snel verloopt de <rhyme label="b" type="m">Tijdt</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Veel snelder als de <rhyme label="a" type="f" corresp="#s1:l1">baren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Of die te poste <rhyme label="b" type="m" corresp="#s1:l2">rijdt</rhyme>,</l>
        <l id="s1:l5" met="5" type="+-">Wort ons ellendigh leven, <rhyme label="c" type="f">Voort-gedreven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het Oude Iaer is <rhyme label="a" type="f">henen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Het Nieuwe vangt weer <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Het voorig’ is <rhyme label="a" type="f" corresp="#s2:l1">verdwenen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gelijck een roock <rhyme label="b" type="m" corresp="#s2:l2">vergaen</rhyme>,</l>
        <l id="s2:l5" met="5" type="+-">Als pijlen van de bogen, <rhyme label="c" type="f">Wegh-gevlogen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die wijs is sal <rhyme label="a" type="f">betrachten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Den tijdt te nemen <rhyme label="b" type="m">waer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En spannen al sijn <rhyme label="a" type="f" corresp="#s3:l1">krachten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Om met Oude <rhyme label="b" type="m" corresp="#s3:l2">Iaer</rhyme>,</l>
        <l id="s3:l5" met="5" type="+-">Der sonden oude rancken, Af te <rhyme label="c" type="f">dancken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Men siet het <rhyme label="a" type="f">menigh-werven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En wie kan ‘t <rhyme label="b" type="m">tegen-staen</rhyme>?</l>
        <l id="s4:l3" met="3" type="-+">Hoe ras de menschen <rhyme label="a" type="f" corresp="#s4:l1">sterven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hoe haest het is <rhyme label="b" type="m" corresp="#s4:l2">gedaen</rhyme>,</l>
        <l id="s4:l5" met="5" type="+-">Hoe licht de braafst’ van allen, Komt te <rhyme label="c" type="f">vallen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wat zijnder ’t Iaar <rhyme label="a" type="f">voorleden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hier in ons’ <rhyme label="b" type="m">Vaderlandt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En na-gebuerde <rhyme label="a" type="f" corresp="#s5:l1">Steden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Al menschen aen een <rhyme label="b" type="m" corresp="#s5:l2">kant</rhyme></l>
        <l id="s5:l5" met="5" type="+-">Geraeckt, en neer-geslagen, <rhyme label="c" type="f">Wegh-gedragen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Laet ons daer op niet <rhyme label="a" type="f">sloffen</rhyme>:</l>
        <l id="s6:l2" met="3" type="-+">Want even ’t selve <rhyme label="b" type="m">quaet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Dat haer had’ <rhyme label="a" type="f" corresp="#s6:l1">aen-getroffen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">-Nu oock al vaerdigh <rhyme label="b" type="m" corresp="#s6:l2">staet</rhyme></l>
        <l id="s6:l5" met="5" type="+-">Om ons met felle neyen, Heen te <rhyme label="c" type="f">slepen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Och! dat ons dit kond’ <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Te dencken aen het <rhyme label="b" type="m">graf</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Opwaerts tot God te <rhyme label="a" type="f" corresp="#s7:l1">keeren</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En ons te trecken <rhyme label="b" type="m" corresp="#s7:l2">af</rhyme></l>
        <l id="s7:l5" met="5" type="+-">Van ’s werelts ydelheden Hier <rhyme label="c" type="f">beneden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wy hebben soo veel <rhyme label="a" type="f">sorgen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En weten niet met <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Of ons de Son van <rhyme label="a" type="f" corresp="#s8:l1">morgen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Gesont beschijnen <rhyme label="b" type="m" corresp="#s8:l2">sal</rhyme>,</l>
        <l id="s8:l5" met="5" type="+-">Of wat de dagh van heden, Mach <rhyme label="c" type="f">bereden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Laet ons dan staen na ’t <rhyme label="a" type="f">beste</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Daer schuylt het grootst’ <rhyme label="b" type="m">gewin</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En dencken aan het <rhyme label="a" type="f" corresp="#s9:l1">leste</rhyme></l>
        <l id="s9:l4" met="3" type="-+">’t Iaer gaet nu weder <rhyme label="b" type="m" corresp="#s9:l2">in</rhyme>,</l>
        <l id="s9:l5" met="5" type="+-">Waer mee wy alle menschen, ’t Hoogste <rhyme label="c" type="f">wenschen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">O God! O lieve <rhyme label="a" type="f">Vader</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">Scheld’ ons het oude <rhyme label="b" type="m">quijt</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">O aller goedtheyts <rhyme label="a" type="f" corresp="#s10:l1">Ader</rhyme>!</l>
        <l id="s10:l4" met="3" type="-+">Vernieuw’ ons nu ter <rhyme label="b" type="m" corresp="#s10:l2">tijdt</rhyme>,</l>
        <l id="s10:l5" met="5" type="+-">Dat wy met nieuwe sinnen, ’t Iaer <rhyme label="c" type="f">beginnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
