  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">GHenade vrede <rhyme label="a" type="f">t'samen</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Nae 't <rhyme label="a" type="f" corresp="#s1:l1">betamen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Wenche ick den Christen <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Die haer van Godt niet en <rhyme label="a" type="f" corresp="#s1:l1">schamen</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Want haer <rhyme label="a" type="f" corresp="#s1:l1">namen</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Zijn in't boeck des levens <rhyme label="b" type="m" corresp="#s1:l3">bewaert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Die van nieus zijn <rhyme label="a" type="f">geboren</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Niet als <rhyme label="a" type="f" corresp="#s2:l1">voren</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Wt water, vyer, ende <rhyme label="b" type="m">gheest</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Dat zijn Godts <rhyme label="a" type="f" corresp="#s2:l1">uytvercoren</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Sijn stem sy <rhyme label="a" type="f" corresp="#s2:l1">hooren</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">En volgen hem <rhyme label="b" type="m" corresp="#s2:l3">onbevreest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Want zy in haer herte <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Seer <rhyme label="a" type="f" corresp="#s3:l1">beminnen</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Godes woordt, 'twelck haer gheeft <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Dat sy eer sy het <rhyme label="a" type="f" corresp="#s3:l1">beginnen</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Wel <rhyme label="a" type="f" corresp="#s3:l1">versinnen</rhyme></l>
        <l id="s3:l6" met="3" type="+-">En aflaten van het <rhyme label="b" type="m" corresp="#s3:l3">quaedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Die van alle boosheydt <rhyme label="a" type="f">keeren</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">En Godt <rhyme label="a" type="f" corresp="#s4:l1">eeren</rhyme></l>
        <l id="s4:l3" met="3" type="+-">In een nieuwe leven <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Sullen van des werelts <rhyme label="a" type="f" corresp="#s4:l1">Heeren</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Nae Godts <rhyme label="a" type="f" corresp="#s4:l1">leeren</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Ghehaet en verdreven <rhyme label="b" type="m" corresp="#s4:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Hoe wel dat sy boven <rhyme label="a" type="f">maten</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Wilt dit <rhyme label="a" type="f" corresp="#s5:l1">vaten</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Seer prijsen Christum <rhyme label="b" type="m">eerbaer</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Ende al dat sy <rhyme label="a" type="f" corresp="#s5:l1">besaten</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Hier <rhyme label="a" type="f" corresp="#s5:l1">verlaten</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Om Gods woordt de waerheyt <rhyme label="b" type="m" corresp="#s5:l3">klaer</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Want na die waerheyt sy <rhyme label="a" type="f">haecken</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Ende <rhyme label="a" type="f" corresp="#s6:l1">waecken</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Soo datmen oock dickwils <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Dat sy aen palen end' <rhyme label="a" type="f" corresp="#s6:l1">staecken</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Moeten <rhyme label="a" type="f" corresp="#s6:l1">raecken</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Om Godts woordt lijden <rhyme label="b" type="m" corresp="#s6:l3">verdriet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">'Twoort was in't eerste <rhyme label="a" type="f">aencleven</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">By Godt <rhyme label="a" type="f" corresp="#s7:l1">verheven</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">Ende Godt was 'twoordt <rhyme label="b" type="m">voorwaer</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">In hem soo was oock het <rhyme label="a" type="f" corresp="#s7:l1">leven</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">D'welck <rhyme label="a" type="f" corresp="#s7:l1">ghegheven</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Is den mensch tot een licht <rhyme label="b" type="m" corresp="#s7:l3">claer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Also seer heeft Godt <rhyme label="a" type="f">Almachtigh</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">'Tis <rhyme label="a" type="f" corresp="#s8:l1">waerachtigh</rhyme>.</l>
        <l id="s8:l3" met="3" type="+-">Dese werelt oock <rhyme label="b" type="m">bemint</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Dat hy heeft uyt liefden <rhyme label="a" type="f" corresp="#s8:l1">krachtigh</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Zijt <rhyme label="a" type="f" corresp="#s8:l1">gedachtigh</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Voor haer gegeven sijn lief <rhyme label="b" type="m" corresp="#s8:l3">kint</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Christus die quam op de <rhyme label="a" type="f">aerde</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Groot van <rhyme label="a" type="f" corresp="#s9:l1">waerde</rhyme>,</l>
        <l id="s9:l3" met="3" type="+-">Van sijnen Hemelschen <rhyme label="b" type="m">vaer</rhyme>,</l>
        <l id="s9:l4" met="3" type="+-">Het vyer (dat ons <rhyme label="a" type="f" corresp="#s9:l1">verteerde</rhyme>)</l>
        <l id="s9:l5" met="2" type="+-">Hy van ons <rhyme label="a" type="f" corresp="#s9:l1">weerde</rhyme>,</l>
        <l id="s9:l6" met="3" type="+-">Ons verlossend' <rhyme label="b" type="m" corresp="#s9:l3">allegaer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Alle die in Christo <rhyme label="a" type="f">reene</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Groot en <rhyme label="a" type="f" corresp="#s10:l1">kleene</rhyme>,</l>
        <l id="s10:l3" met="3" type="+-">Gelooft ende voort <rhyme label="b" type="m">weldoet</rhyme>,</l>
        <l id="s10:l4" met="3" type="+-">Die en laet hy niet <rhyme label="a" type="f" corresp="#s10:l1">alleene</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-">Noch in <rhyme label="a" type="f" corresp="#s10:l1">weene</rhyme>,</l>
        <l id="s10:l6" met="3" type="+-">Maer maecktse Godts kinders <rhyme label="b" type="m" corresp="#s10:l3">soet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">Men en kan doch niet <rhyme label="a" type="f">doorgronden</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">Noch <rhyme label="a" type="f" corresp="#s11:l1">vermonden</rhyme></l>
        <l id="s11:l3" met="3" type="+-">Die reyn liefde Christi <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">Dat hy ons door sijne <rhyme label="a" type="f" corresp="#s11:l1">wonden</rhyme></l>
        <l id="s11:l5" met="2" type="+-">Heeft <rhyme label="a" type="f" corresp="#s11:l1">ontbonden</rhyme>,</l>
        <l id="s11:l6" met="3" type="+-">End' bevrijdt al van den <rhyme label="b" type="m" corresp="#s11:l3">doodt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="+-">Dus al ghy Adams <rhyme label="a" type="f">gheslachte</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">Cleyn van <rhyme label="a" type="f" corresp="#s12:l1">machte</rhyme>,</l>
        <l id="s12:l3" met="3" type="+-">Looft Godt ende prijst hem <rhyme label="b" type="m">seer</rhyme></l>
        <l id="s12:l4" met="3" type="+-">Met hert, met daedt, met <rhyme label="a" type="f" corresp="#s12:l1">krachte</rhyme>,</l>
        <l id="s12:l5" met="2" type="+-">Met <rhyme label="a" type="f" corresp="#s12:l1">gedachte</rhyme>,</l>
        <l id="s12:l6" met="3" type="+-">Door Christ' onsen lieven <rhyme label="b" type="m" corresp="#s12:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="+-">Ende aen sijn woort wilt <rhyme label="a" type="f">houwen</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">Met <rhyme label="a" type="f" corresp="#s13:l1">betrouwen</rhyme>,</l>
        <l id="s13:l3" met="3" type="+-">Vastelijck tot in den <rhyme label="b" type="m">ent</rhyme>,</l>
        <l id="s13:l4" met="3" type="+-">Soo sal hy in het <rhyme label="a" type="f" corresp="#s13:l1">benouwen</rhyme></l>
        <l id="s13:l5" met="2" type="+-">V <rhyme label="a" type="f" corresp="#s13:l1">bedouwen</rhyme></l>
        <l id="s13:l6" met="3" type="+-">Met sijnen Gheest <rhyme label="b" type="m" corresp="#s13:l3">excellent</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
