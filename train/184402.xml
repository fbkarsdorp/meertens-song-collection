  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IN God verborgen <rhyme label="a" type="f">leeven</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Hem maar <rhyme label="a" type="f" corresp="#s1:l1">aankleeven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">In God verborgen <rhyme label="a" type="f" corresp="#s1:l1">leeven</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">O schoone <rhyme label="b" type="m">stand</rhyme>!</l>
        <l id="s1:l5" met="3" type="-+">Zich gansch aan Hem te <rhyme label="a" type="f" corresp="#s1:l1">geeven</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Met hart en <rhyme label="b" type="m" corresp="#s1:l4">hand</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Myn ziele zogt zo <rhyme label="a" type="f">lange</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Haar wierd zo <rhyme label="a" type="f" corresp="#s2:l1">bange</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Myn ziele zogt zo <rhyme label="a" type="f" corresp="#s2:l1">lange</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Nu heeft zy <rhyme label="b" type="m">rust</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Ik heb 't geen ik <rhyme label="a" type="f" corresp="#s2:l1">verlange</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Gansch nae in 't <rhyme label="b" type="m" corresp="#s2:l4">huis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het Schepsel is <rhyme label="a" type="f">verzwonden</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Daar dit <rhyme label="a" type="f" corresp="#s3:l1">gevonden</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Het Schepsel is <rhyme label="a" type="f" corresp="#s3:l1">verzwonden</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Als God na <rhyme label="b" type="m">by</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">De Geest is Hem <rhyme label="a" type="f" corresp="#s3:l1">verbonden</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">En eeuwig <rhyme label="b" type="m" corresp="#s3:l4">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe is de rust zo <rhyme label="a" type="f">zoete</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Die ik <rhyme label="a" type="f" corresp="#s4:l1">geniete</rhyme>!</l>
        <l id="s4:l3" met="3" type="-+">Hoe is de rust zo <rhyme label="a" type="f" corresp="#s4:l1">zoete</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">In stillen <rhyme label="b" type="m">grond</rhyme>!</l>
        <l id="s4:l5" met="3" type="-+">Daar ik aan Jesus <rhyme label="a" type="f" corresp="#s4:l1">voeten</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Zit t'aller <rhyme label="b" type="m" corresp="#s4:l4">stond</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wie deeze Rust wil <rhyme label="a" type="f">vaten</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Moet alles <rhyme label="a" type="f" corresp="#s5:l1">laaten</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Wie deeze Rust wil <rhyme label="a" type="f" corresp="#s5:l1">vaten</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Moet innig <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">God lieven en zich <rhyme label="a" type="f" corresp="#s5:l1">haaten</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Volstandig <rhyme label="b" type="m" corresp="#s5:l4">zyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">God zuiver en <rhyme label="a" type="f">alleine</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">In alles <rhyme label="a" type="f" corresp="#s6:l1">meine</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">God zuiver en <rhyme label="a" type="f" corresp="#s6:l1">alleine</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Zy all uw <rhyme label="b" type="m">goed</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Eenvoudig, stil en <rhyme label="a" type="f" corresp="#s6:l1">kleine</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Gy worden <rhyme label="b" type="m" corresp="#s6:l4">moet</rhyme>.</l>
      </lg>
    </lg>
  </text>
