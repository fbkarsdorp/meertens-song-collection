    <melody>Gelijk de hert spoedt</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">GElyck den Hert <rhyme label="a" type="m">spoeydt</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Om waeter te <rhyme label="b" type="f">vinden</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Wanneer hy <rhyme label="a" type="m" corresp="#s1:l1">vermoeydt</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Ontvlucht <rhyme label="b" type="f" corresp="#s1:l2">d'haze-winden</rhyme>;</l>
        <l id="s1:l5" met="3" type="+-">Wenscht, Jesu, myn <rhyme label="c" type="f">herte</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Vol dorstige <rhyme label="d" type="m">pyn</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">In alle myn <rhyme label="c" type="f" corresp="#s1:l5">smerte</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Met u oock te <rhyme label="d" type="m" corresp="#s1:l6">syn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Verdrietigen <rhyme label="a" type="m">tydt</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Verdrietige <rhyme label="b" type="f">nachten</rhyme>!</l>
        <l id="s2:l3" met="3" type="+-">Gy eeuwigheydt <rhyme label="a" type="m" corresp="#s2:l1">syt</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Die my soo doet <rhyme label="b" type="f" corresp="#s2:l2">wachten</rhyme>:</l>
        <l id="s2:l5" met="3" type="+-">Mocht ick by u <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Myn hooghste <rhyme label="d" type="m">geluck</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Waer lange <rhyme label="c" type="f" corresp="#s2:l5">genesen</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Myn Ziele van <rhyme label="d" type="m" corresp="#s2:l6">druck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">O soet' <rhyme label="a" type="m">Medecyn</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">O Hemelsche <rhyme label="b" type="f">spyse</rhyme>!</l>
        <l id="s3:l3" met="3" type="+-">Komt mynen troost <rhyme label="a" type="m" corresp="#s3:l1">syn</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Komt ras in my <rhyme label="b" type="f" corresp="#s3:l2">rysen</rhyme>:</l>
        <l id="s3:l5" met="3" type="+-">Gy kent, wat al <rhyme label="c" type="f">quaelen</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Syn binnen myn <rhyme label="d" type="m">hert</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">Ey! komt in my <rhyme label="c" type="f" corresp="#s3:l5">daelen</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Genesen myn <rhyme label="d" type="m" corresp="#s3:l6">smert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Als ick u een <rhyme label="a" type="m">keer</rhyme></l>
        <l id="s4:l2" met="3" type="+-">In my sal <rhyme label="b" type="f">ontfangen</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Ontsteeckt noch al <rhyme label="a" type="m" corresp="#s4:l1">meer</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Tot u myn <rhyme label="b" type="f" corresp="#s4:l2">verlangen</rhyme>:</l>
        <l id="s4:l5" met="3" type="+-">Doet myne liefd' <rhyme label="c" type="f">branden</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Wanneer ick u <rhyme label="d" type="m">vind'</rhyme>;</l>
        <l id="s4:l7" met="3" type="+-">Dat sy met haer <rhyme label="c" type="f" corresp="#s4:l5">banden</rhyme></l>
        <l id="s4:l8" met="3" type="+-">My vast aen u <rhyme label="d" type="m" corresp="#s4:l6">bindt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
