  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O! Hoe soet, en hoe vol <rhyme label="a" type="f">vreughden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Heere Jesus syn de <rhyme label="a" type="f" corresp="#s1:l1">deughden</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">Boven melck, en boven <rhyme label="b" type="m">wyn</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Boven alle <rhyme label="c" type="f">soeticheden</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Ick segh, alle <rhyme label="c" type="f" corresp="#s1:l4">sotticheden</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die d'er in de werelt <rhyme label="b" type="m" corresp="#s1:l3">syn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dat de dulle menschen <rhyme label="a" type="f">poeffen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En op d'ydel werelt <rhyme label="a" type="f" corresp="#s2:l1">stoeffen</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Haer genucht is my <rhyme label="b" type="m">verdriet</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Dat haer Minnaers <rhyme label="c" type="f">triumpheren</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Dat haer Dienaers <rhyme label="c" type="f" corresp="#s2:l4">glorieren</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">Ick en acht de werelt <rhyme label="b" type="m" corresp="#s2:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ick veracht haer listich <rhyme label="a" type="f">praetjen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">VVant haer visken heeft een <rhyme label="a" type="f" corresp="#s3:l1">graetjen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En haer Roosken eenen <rhyme label="b" type="m">dorn</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Hare lusten syn vol <rhyme label="c" type="f">smerten</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">O! gerustichyt des <rhyme label="c" type="f" corresp="#s3:l4">herten</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Ghy dient my voor eenen <rhyme label="b" type="m" corresp="#s3:l3">Horn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ghy verleendt my suyver <rhyme label="a" type="f">welden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Die een ziele mach <rhyme label="a" type="f" corresp="#s4:l1">verbelden</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Ghy vervult heel myn <rhyme label="b" type="m">gemoet</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Ghy doet my dit lieken <rhyme label="c" type="f">singen</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Maer daer is noch ander <rhyme label="c" type="f" corresp="#s4:l4">dingen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dat ick ondervinden <rhyme label="b" type="m" corresp="#s4:l3">moet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
