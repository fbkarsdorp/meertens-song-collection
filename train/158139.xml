<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>158139</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>O zalig heilig Bethlehem</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy al die Christi naem <rhyme label="a" type="m">belijdt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En hebt u tot den Heer <rhyme label="b" type="f">begeven</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Op dat ghy soudt na desen <rhyme label="a" type="m" corresp="#s1:l1">tijdt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Eeuwigh met hem in vreughde <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ey! let nu dogh op het <rhyme label="a" type="m">gebodt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat u de Heere heeft <rhyme label="b" type="f">geboden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Versaeckt u seydt dien groote <rhyme label="a" type="m" corresp="#s2:l1">Godt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En wilt u aerdtsche lusten <rhyme label="b" type="f" corresp="#s2:l2">dooden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Eyst Godt versaecken van den <rhyme label="a" type="m">Mensch</rhyme>?</l>
        <l id="s3:l2" met="4" type="-+">Soo moet ghy u gans <rhyme label="b" type="f">overgeven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Geheel en d'al, naer eygen <rhyme label="a" type="m" corresp="#s3:l1">wensch</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Mooght ghy in 't alderminst niet <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Roept uyt dan al wat hinder <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En wilt o Mensch u selfs niet <rhyme label="b" type="f">vresen</rhyme>!</l>
        <l id="s4:l3" met="4" type="-+">Want soo ghy noch de sonden <rhyme label="a" type="m" corresp="#s4:l1">voedt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Soo mooght ghy geen Discipel <rhyme label="b" type="f" corresp="#s4:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het sy o Mensche wat het <rhyme label="a" type="m">sy</rhyme>!</l>
        <l id="s5:l2" met="4" type="-+">Al wat in deught u kan <rhyme label="b" type="f">verhind'ren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En soeckje daer te blijven <rhyme label="a" type="m" corresp="#s5:l1">by</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo benje niet van Godes <rhyme label="b" type="f" corresp="#s5:l2">Kindren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En soomen dreef met u den <rhyme label="a" type="m">spot</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Als ghy u gansch socht te <rhyme label="b" type="f">versaecken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Al scheltmen u voor mal of <rhyme label="a" type="m" corresp="#s6:l1">sot</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Sout ghy dan u voornemen <rhyme label="b" type="f" corresp="#s6:l2">staecken</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Blijvende dan terugh van <rhyme label="a" type="m">schaemt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Hoort, wat seyt Christus ons <rhyme label="b" type="f">berader</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Wie doet door schaemt, dat niet <rhyme label="a" type="m" corresp="#s7:l1">betaemt</rhyme>?</l>
        <l id="s7:l4" met="4" type="-+">Dien sal ick schamen voor mijn <rhyme label="b" type="f" corresp="#s7:l2">Vader</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Vaet dese reden in u <rhyme label="a" type="m">oor</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Wilt na u wil geen leven <rhyme label="b" type="f">kiesen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Oft anders soudt ghy dan daer <rhyme label="a" type="m" corresp="#s8:l1">door</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Het eeuwigh leven weer <rhyme label="b" type="f" corresp="#s8:l2">verliesen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">In tegendeel soo ghy <rhyme label="a" type="m">verlaet</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Des vleysches wil om Christi <rhyme label="b" type="f">leere</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Soo sult ghy na de spot en <rhyme label="a" type="m" corresp="#s9:l1">smaet</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Beleden worden van den <rhyme label="b" type="f" corresp="#s9:l2">Heere</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De poort is engh de wegh is <rhyme label="a" type="m">smal</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">'t Zijn Christi reden die 't <rhyme label="b" type="f">betuygen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dus wie ten leven komen <rhyme label="a" type="m" corresp="#s10:l1">sal</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Moet sich in alles neder <rhyme label="b" type="f" corresp="#s10:l2">buygen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">'t Is waer het schijnt al vry wat <rhyme label="a" type="m">swaer</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dat men sich gansch soud' over <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Schijn, is geen zijn: want wilmen <rhyme label="a" type="m" corresp="#s11:l1">maer</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Soo wortmen krachtigh <rhyme label="b" type="f" corresp="#s11:l2">aengedreven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En soo beweeght door Christi <rhyme label="a" type="m">geest</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Dat wat in't eerst bitter als roedt <rhyme label="b" type="f">is</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Verandert in een vreughden <rhyme label="a" type="m" corresp="#s12:l1">feest</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Dat Christi jock staegh licht en soet <rhyme label="b" type="f" corresp="#s12:l2">is</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Rust salder wesen in 't <rhyme label="a" type="m">gemoedt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Voor yder quaedt dat ghy <rhyme label="b" type="f">begevet</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Wel hondert fout sal 't zijn <rhyme label="a" type="m" corresp="#s13:l1">geboet</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Terwijlje noch op 't aerdtrijck <rhyme label="b" type="f" corresp="#s13:l2">levet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Soo dese reden niet dringht <rhyme label="a" type="m">voort</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Dat ghy het aerdts sout willen <rhyme label="b" type="f">derven</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Soo let noch verder op sijn <rhyme label="a" type="m" corresp="#s14:l1">woordt</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En noch het eeuwigh leven <rhyme label="b" type="f" corresp="#s14:l2">erven</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Door liefde dan van 't eeuwigh <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Kanmen 't vergancklijck licht <rhyme label="b" type="f">versaken</rhyme>.</l>
        <l id="s15:l3" met="4" type="-+">Heft staegh maer d'oogen van <rhyme label="a" type="m" corresp="#s15:l1">'tgemoet</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Ter plaetse daer ghy hoopt te <rhyme label="b" type="f" corresp="#s15:l2">raken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
