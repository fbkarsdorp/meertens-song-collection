  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'s Morgens als de <rhyme label="a" type="f">zonnestralen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Liefelijk met zachten <rhyme label="b" type="m">glans</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Op de bloempjes <rhyme label="a" type="f" corresp="#s1:l1">nederdalen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Van den blaauwen <rhyme label="b" type="m" corresp="#s1:l2">hemeltrans</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Kan dan wel een Minnaar <rhyme label="c" type="f">slapen</rhyme>?</l>
        <l id="s1:l6" met="4" type="+-">Die voor 't minnen is <rhyme label="c" type="f" corresp="#s1:l5">geschapen</rhyme>?</l>
        <l id="s1:l7" met="4" type="-+">Daar alles leeft in rust en <rhyme label="d" type="m">vree</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Roep ik hoezee! roep ik <rhyme label="d" type="m" corresp="#s1:l7">hoezee</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Zoo wandel ik eens op en <rhyme label="a" type="f">neder</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Ontmoet ik mijn Lizette <rhyme label="b" type="m">dan</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dan vlei ik haar zoo lief en <rhyme label="a" type="f" corresp="#s2:l1">teeder</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dat zij mij niets weig'ren <rhyme label="b" type="m" corresp="#s2:l2">kan</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Ja dan spreek ik van de <rhyme label="c" type="f">liefde</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Die ons beider harte <rhyme label="c" type="f" corresp="#s2:l5">griefde</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Daar alles leeft in rust en <rhyme label="d" type="m">vree</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Roep ik hoezee! roep ik <rhyme label="d" type="m" corresp="#s2:l7">hoezee</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zoo verlaten wij <rhyme label="a" type="f">elkander</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Ieder heeft zijn <rhyme label="b" type="m">bezigheid</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'t Een vermaak volgt op het <rhyme label="a" type="f" corresp="#s3:l1">ander</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Buitenlucht geeft <rhyme label="b" type="m" corresp="#s3:l2">vrolijkheid</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">'k Ga uit vog'len en uit <rhyme label="c" type="f">visschen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">'t Vangen kan mij zelden <rhyme label="c" type="f" corresp="#s3:l5">missen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Breng ik Lizette dan iets <rhyme label="d" type="m">mee</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Roept zij hoezee! roept zij <rhyme label="d" type="m" corresp="#s3:l7">hoezee</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dan kom ik weder bij <rhyme label="a" type="f">Lizette</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">In den zoelen <rhyme label="b" type="m">avondstond</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'k Verheug mij, niets kan dit <rhyme label="a" type="f" corresp="#s4:l1">beletten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Daar ik mijn vermaak in <rhyme label="b" type="m" corresp="#s4:l2">vond</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">O dan spreek ik weÃªr van <rhyme label="c" type="f">liefde</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Die ons beider hart <rhyme label="c" type="f" corresp="#s4:l5">doorgriefde</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">'t Meisje wordt er door <rhyme label="d" type="m">gedwee</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">'k Zing hoezee! ik zing <rhyme label="d" type="m" corresp="#s4:l7">hoezee</rhyme>!</l>
      </lg>
    </lg>
