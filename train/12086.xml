    <melody>Maagd rein eerbaar van zeden</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MAghet reyn’, eerbaer van <rhyme label="a" type="f">seden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Wilt ghy hooren naer mijn <rhyme label="a" type="f" corresp="#s1:l1">reden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Het sal v salich zijn, dat <rhyme label="b" type="m">s’klaer</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Als ghy zult zijn <rhyme label="a" type="f" corresp="#s1:l1">ouer-leden</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En begrauen hier <rhyme label="a" type="f" corresp="#s1:l1">beneden</rhyme>:</l>
        <l id="s1:l6" met="4" type="+-">Daerom neemt den tijdt nu <rhyme label="b" type="m" corresp="#s1:l3">waer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wilt my nu eens hooren <rhyme label="a" type="f">spreken</rhyme>:</l>
        <l id="s2:l2" met="4" type="+-">Vanden wech zijt ghy <rhyme label="a" type="f" corresp="#s2:l1">gheweken</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Wilt ghy die werelt volghen <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Sy sal u met loose <rhyme label="a" type="f" corresp="#s2:l1">treken</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Brenghen tot seer veel <rhyme label="a" type="f" corresp="#s2:l1">ghebreken</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">Daerom neemt den tijt nu <rhyme label="b" type="m" corresp="#s2:l3">waer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Volght dan lieuer Godt den <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Voeghend’ u naer Christus <rhyme label="a" type="f" corresp="#s3:l1">leere</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Want enghe is den wech die <rhyme label="b" type="m">daer</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Leydt tot ‘shemels prijs end’ <rhyme label="a" type="f" corresp="#s3:l1">eere</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Dus al zijdy ionck en <rhyme label="a" type="f" corresp="#s3:l1">teere</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Wilt den tijdt wel nemen <rhyme label="b" type="m" corresp="#s3:l3">waer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Peynst doch op de leste <rhyme label="a" type="f">daghen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als Godt rekeningh’ sal <rhyme label="a" type="f" corresp="#s4:l1">vraghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daer’t al sal worden <rhyme label="b" type="m">openbaer</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Dan soo sullent sy <rhyme label="a" type="f" corresp="#s4:l1">beklaghen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Die de sonde derren <rhyme label="a" type="f" corresp="#s4:l1">waghen</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">Daerom neemt den tijdt nu <rhyme label="b" type="m" corresp="#s4:l3">waer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
