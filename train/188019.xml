  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAnneer als Davids <rhyme label="a" type="m">Soon</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Droegh Scepter ende <rhyme label="a" type="m" corresp="#s1:l1">Kroon</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo dee hy niet <rhyme label="b" type="f">vergelden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Des vloeckaerts <rhyme label="c" type="m">laster-stuck</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Die David in sijn <rhyme label="c" type="m" corresp="#s1:l4">druck</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Na gingh met gruw'lijck <rhyme label="b" type="f" corresp="#s1:l3">schelden</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer heeft gheseydt tot <rhyme label="a" type="m">hem</rhyme>:</l>
        <l id="s2:l2" met="3" type="-+">Blijft in <rhyme label="a" type="m" corresp="#s2:l1">Jerusalem</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo sult ghy heyl <rhyme label="b" type="f">verwerven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Al hebt ghy swaer <rhyme label="c" type="m">misdaen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Maer wilt ghy elders <rhyme label="c" type="m" corresp="#s2:l4">gaen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Soo sult ghy daerom <rhyme label="b" type="f" corresp="#s2:l3">sterven</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dus bleef hy in de <rhyme label="a" type="m">Stadt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Tot hy dat Woordt <rhyme label="a" type="m" corresp="#s3:l1">vergat</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En overtrat de <rhyme label="b" type="f">palen</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Doe was 't voor hem te <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Want hy most dese <rhyme label="c" type="m" corresp="#s3:l4">daedt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met 's herten bloet <rhyme label="b" type="f" corresp="#s3:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wy hebben door <rhyme label="a" type="m">misdaedt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Des hooghsten <rhyme label="a" type="m" corresp="#s4:l1">ongenaed</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Oock op den hals <rhyme label="b" type="f">gheladen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Maer door Godts Lieve <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">die heerscht op 's Hemels <rhyme label="c" type="m" corresp="#s4:l4">Troon</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Bekomen wy <rhyme label="b" type="f" corresp="#s4:l3">ghenaden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer dien hy 't quaedt <rhyme label="a" type="m">vergeeft</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Beveelt hy mede: <rhyme label="a" type="m" corresp="#s5:l1">leeft</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Ghedurigh in mijn <rhyme label="b" type="f">Kercke</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Soo wasch ick af uw <rhyme label="c" type="m">feyl</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Soo kleed ick u met <rhyme label="c" type="m" corresp="#s5:l4">heyl</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En deck u met mijn <rhyme label="b" type="f" corresp="#s5:l3">vlercken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer voor gewis, sijn <rhyme label="a" type="m">straf</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sal op ons dalen <rhyme label="a" type="m" corresp="#s6:l1">af</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Soo wy gaen and're <rhyme label="b" type="f">gangen</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Blijft hier in Godts <rhyme label="c" type="m">Poortael</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Tot dat des Hemels <rhyme label="c" type="m" corresp="#s6:l4">Zael</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Hier namaels u <rhyme label="b" type="f" corresp="#s6:l3">ontfanghe</rhyme>.</l>
      </lg>
    </lg>
  </text>
