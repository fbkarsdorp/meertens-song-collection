  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Maria Iesu <rhyme label="a" type="f">Moeder</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">Ghy die voor ons zijt <rhyme label="b" type="m">belaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En met onsen lieven <rhyme label="a" type="f" corresp="#s1:l1">broeder</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Hier hebt onder ‘t Cruys <rhyme label="b" type="m" corresp="#s1:l2">gestaen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Wilt ons leeren nu <rhyme label="c" type="f">bekeeren</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Door het lijden Christi <rhyme label="d" type="m">hier</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Laet ons draghen met <rhyme label="e" type="f">behagen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">In ons hert sijn minne <rhyme label="d" type="m" corresp="#s1:l6">vier</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Doet ons nu met u <rhyme label="a" type="f">beweenen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Oock sijn bitter lijden <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En ons herten, laet van <rhyme label="a" type="f" corresp="#s2:l1">steenen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Nu niet langer blijven <rhyme label="b" type="m" corresp="#s2:l2">doodt</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Maer verwecken, tot u <rhyme label="c" type="f">trecken</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Met een levendigh <rhyme label="d" type="m">gemoet</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Om in seden, naer de <rhyme label="e" type="f">reden</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Soo te volgen Iesum <rhyme label="d" type="m" corresp="#s2:l6">soet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hy quam om ons te <rhyme label="a" type="f">verblijden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Hy quam sterven onse <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En door lijden ons <rhyme label="a" type="f" corresp="#s3:l1">bevrijden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Ons geluck brocht hem in <rhyme label="b" type="m" corresp="#s3:l2">noodt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Laet sijn tranen ons <rhyme label="c" type="f">vermanen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">En doen weenen soo <rhyme label="d" type="m">altijdt</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Want hy ‘t leven eens sal <rhyme label="e" type="f">geven</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Die sijn lijden hier <rhyme label="d" type="m" corresp="#s3:l6">bekrydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
