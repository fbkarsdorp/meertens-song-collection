  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Jesus spreekt sijn <rhyme label="a" type="f">Prophetijen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hoe jammerlijke groot <rhyme label="b" type="m">elendt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">De Jooden nogh eens souden <rhyme label="a" type="f" corresp="#s1:l1">lijen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Om hare groote sond', in 't <rhyme label="b" type="m" corresp="#s1:l2">endt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wanneer gy-lieden sult <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Een Leeger, om <rhyme label="b" type="m">Jerusalem</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Beleggen, ende vast <rhyme label="a" type="f" corresp="#s2:l1">benouwen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">De Stadt dan raken sal in <rhyme label="b" type="m" corresp="#s2:l2">klem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dan sult gy-lieden ook sien <rhyme label="a" type="f">naken</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Haer droevige <rhyme label="b" type="m">verwoestingen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Als gy d' afgrijslikheydt siet <rhyme label="a" type="f" corresp="#s3:l1">raken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ook in de plaets der <rhyme label="b" type="m" corresp="#s3:l2">Heyligen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Na DaniÃ«lis <rhyme label="a" type="f">propheteeren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die 't leese, dat hy dat <rhyme label="b" type="m">verstae</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die dan in 't Joodsche Landt <rhyme label="a" type="f" corresp="#s4:l1">verkeeren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat die na het geberghte <rhyme label="b" type="m" corresp="#s4:l2">gae</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die buyten is, kom niet <rhyme label="a" type="f">weeromme</rhyme>;</l>
        <l id="s5:l2" met="4" type="-+">Die op het huys, klim daer niet <rhyme label="b" type="m">van</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Om binnen in het huys te <rhyme label="a" type="f" corresp="#s5:l1">komme</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Om wat daer uyt te halen <rhyme label="b" type="m" corresp="#s5:l2">dan</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En die in 't veldt is, niet <rhyme label="a" type="f">weer-keere</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Om te gaen halen sijne <rhyme label="b" type="m">kleet</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">'t Is tijt van wraek, en 't <rhyme label="a" type="f" corresp="#s6:l1">propheteere</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Vervult moet sijn van den <rhyme label="b" type="m" corresp="#s6:l2">Propheet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wee Vrouwen die dan Kinder <rhyme label="a" type="f">dragen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Wee die dan Kinders mammen <rhyme label="b" type="m">bied</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Bidt dat togh niet op <rhyme label="a" type="f" corresp="#s7:l1">Sabbath-dagen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Of in de Winter het <rhyme label="b" type="m" corresp="#s7:l2">geschied</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Want dan sal over dese <rhyme label="a" type="f">nati'</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Sijn gramschap, ende parsingh <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Daer sal dan koomen <rhyme label="a" type="f" corresp="#s8:l1">tribulati</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Sulks noyt en was, of weesen <rhyme label="b" type="m" corresp="#s8:l2">sel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sy sullen vallen door den <rhyme label="a" type="f">swaerde</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Gevangen worden wegh <rhyme label="b" type="m">gebroght</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Sy sullen om een kleyne <rhyme label="a" type="f" corresp="#s9:l1">waerde</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Aen Heydenen worden <rhyme label="b" type="m" corresp="#s9:l2">verkoght</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Jerusalem sal sijn <rhyme label="a" type="f">betreeden</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Van Heydenen, tot  dat aen <rhyme label="b" type="m">kom</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Den tijde van de <rhyme label="a" type="f" corresp="#s10:l1">volligheeden</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Der natien die sijn <rhyme label="b" type="m" corresp="#s10:l2">rontom</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ten waer Godt om de <rhyme label="a" type="f">uytverkooren</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Dees dagen niet en hadt <rhyme label="b" type="m">verkleynt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Sy souden alle gaen <rhyme label="a" type="f" corresp="#s11:l1">verlooren</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Maer om dees heeft hy die <rhyme label="b" type="m" corresp="#s11:l2">ge-eyndt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Jerusalem, met haren <rhyme label="a" type="f">Tempel</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Voor ons en alle <rhyme label="b" type="m">natien</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Is een seer grouwelijk <rhyme label="a" type="f" corresp="#s12:l1">exempel</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Och laet ons, ons togh <rhyme label="b" type="m" corresp="#s12:l2">beeteren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
