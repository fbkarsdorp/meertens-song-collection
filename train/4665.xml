    <tags/>
    <melody>Wil ontspringen</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEer genade! Mijn <rhyme label="a" type="f">misdaden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Meerder zijn als ’t zand der <rhyme label="b" type="m">zee</rhyme></l>
        <l id="s1:l3" met="4" type="+-">En mijn zinnen// Doen van <rhyme label="c" type="f">binnen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">En van buy-ten, E-ven <rhyme label="b" type="m" corresp="#s1:l2">wee</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Om dat zy de vol-ste <rhyme label="d" type="f">ader</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Van het eeuwig springend’ <rhyme label="e" type="m">nat</rhyme></l>
        <l id="s1:l7" met="4" type="+-">En daer toe den besten <rhyme label="d" type="f" corresp="#s1:l5">vader</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Lieten met zijn rijke <rhyme label="e" type="m" corresp="#s1:l6">schat</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ach onwaerde// wil dan <rhyme label="a" type="f">d’aerde</rhyme>//</l>
        <l id="s2:l2" met="4" type="+-">Dragen noch zoo snoden <rhyme label="b" type="m">fiel</rhyme>!</l>
        <l id="s2:l3" met="4" type="+-">Die Goods wetten// dorst <rhyme label="c" type="f">besmetten</rhyme>//</l>
        <l id="s2:l4" met="4" type="+-">Die den Hemel, die zijn <rhyme label="b" type="m" corresp="#s2:l2">ziel</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Voor een hand vol dreks <rhyme label="d" type="f">verruylen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Dorst, tot wellust vande <rhyme label="e" type="m">hel</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Och hoe spotten, och hoe <rhyme label="d" type="f" corresp="#s2:l5">druylen</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Nu all’ d’Eng’len met my <rhyme label="e" type="m" corresp="#s2:l6">wel</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maer niet langer; want noit <rhyme label="a" type="f">banger</rhyme>//</l>
        <l id="s3:l2" met="4" type="+-">Was mijn neer geslagen <rhyme label="b" type="m">geest</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Als haer wezen// is <rhyme label="c" type="f">midsdezen</rhyme>//</l>
        <l id="s3:l4" met="4" type="+-">Dat ik oit zoo koen <rhyme label="b" type="m" corresp="#s3:l2">geweest</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Ben, van mijn vuile <rhyme label="d" type="f">zonden</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Leed te doen een <rhyme label="e" type="m">Majesteyt</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Daer geen maet in werd <rhyme label="d" type="f" corresp="#s3:l5">gevonden</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Van goed en <rhyme label="e" type="m" corresp="#s3:l6">groot-dadigheyd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dat ik hebbe// d’arme <rhyme label="a" type="f">krebbe</rhyme>//</l>
        <l id="s4:l2" met="4" type="+-">En met een de diere <rhyme label="b" type="m">kost</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Vande wonden// daer mijn <rhyme label="c" type="f">zonden</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Aen het kruis mee sijn <rhyme label="b" type="m" corresp="#s4:l2">verlost</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Zoo ondankbaerlijk <rhyme label="d" type="f">vergeten</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">Maer, o Heer! ick bidd’ om <rhyme label="e" type="m">vree</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Doed my all’ de zonden <rhyme label="d" type="f" corresp="#s4:l5">weten</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Die ‘k oit tegens u mis <rhyme label="e" type="m" corresp="#s4:l6">dee</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Geeft my kennis// van al ’t <rhyme label="a" type="f">schennis</rhyme>//</l>
        <l id="s5:l2" met="4" type="+-">Daer ik nu of <rhyme label="b" type="m">immermeer</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Vw’ genade// deur <rhyme label="c" type="f">versmade</rhyme>//</l>
        <l id="s5:l4" met="4" type="+-">Want wie zal de zonden, <rhyme label="b" type="m" corresp="#s5:l2">Heer</rhyme>!</l>
        <l id="s5:l5" met="4" type="+-">Zonder u erkennen <rhyme label="d" type="f">meugen</rhyme>?</l>
        <l id="s5:l6" met="4" type="+-">Wie zal ’t geen hy heeft mis <rhyme label="e" type="m">daen</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Of van punt te punt <rhyme label="d" type="f" corresp="#s5:l5">geheugen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Of van stuk te stuk <rhyme label="e" type="m" corresp="#s5:l6">verstaen</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Laet daeromme// tot mijn <rhyme label="a" type="f">kommen</rhyme>//</l>
        <l id="s6:l2" met="4" type="+-">Maer een straeltjen, van uw’ <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">’t Welk van alle, <rhyme label="c" type="f">d’ongevallen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Der gebreken my <rhyme label="b" type="m" corresp="#s6:l2">bericht</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Prouft mijn hart, doorzoukt mijn <rhyme label="d" type="f">nieren</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Kendt mijn paden. Want uw’ <rhyme label="e" type="m">knecht</rhyme></l>
        <l id="s6:l7" met="4" type="+-">Wil in geenderley <rhyme label="d" type="f" corresp="#s6:l5">manieren</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Iet ontrekken uw’ <rhyme label="e" type="m" corresp="#s6:l6">gerecht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dus gelegen// dus <rhyme label="a" type="f">genegen</rhyme>//</l>
        <l id="s7:l2" met="4" type="+-">Wil ik met een teer <rhyme label="b" type="m">gevoel</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Mijn gaen vougen// tot <rhyme label="c" type="f">genougen</rhyme>//</l>
        <l id="s7:l4" met="4" type="+-">Van de rechterlijkke <rhyme label="b" type="m" corresp="#s7:l2">Stoel</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Die mijn ziel van uwent <rhyme label="d" type="f">wegen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Zal ontbinden: en te <rhyme label="e" type="m">hand</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Reyken doen den dieren <rhyme label="d" type="f" corresp="#s7:l5">zegen</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Van des Hemels rijkste <rhyme label="e" type="m" corresp="#s7:l6">pand</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Dat nu moeten// all’ de <rhyme label="a" type="f">zoeten</rhyme>//</l>
        <l id="s8:l2" met="4" type="+-">Eng’le Choren zingen <rhyme label="b" type="m">lof</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">Voor de gracy// die <rhyme label="c" type="f">eylacy</rhyme>//</l>
        <l id="s8:l4" met="4" type="+-">Aen een zoo verwurpen <rhyme label="b" type="m" corresp="#s8:l2">stof</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Van een sondaer Iesus <rhyme label="d" type="f">deede</rhyme>.</l>
        <l id="s8:l6" met="4" type="+-">Want dits toch de blijde <rhyme label="e" type="m">vreugd</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Die all’ d’Eng’len, inde <rhyme label="d" type="f" corresp="#s8:l5">vrede</rhyme></l>
        <l id="s8:l8" met="4" type="+-">Van een Penitent <rhyme label="e" type="m" corresp="#s8:l6">verheugd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
