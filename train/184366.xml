  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Gy <rhyme label="a" type="m">Zielen-bruidegom</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">Zouden Zielen, die U <rhyme label="b" type="f">kennen</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">U <rhyme label="b" type="f" corresp="#s1:l2">ontwennen</rhyme>!</l>
        <l id="s1:l4" met="4" type="+-">Volgende een and're <rhyme label="c" type="m">Ster</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Dat zy <rhyme label="c" type="m" corresp="#s1:l4">verr'</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Wat is alles op deez' <rhyme label="b" type="f" corresp="#s1:l2">aarde</rhyme>!</l>
        <l id="s1:l7" met="4" type="+-">Jesus is ons meer van <rhyme label="b" type="f" corresp="#s1:l2">waarde</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Daar is dog geen Heiland <rhyme label="c" type="m" corresp="#s1:l4">meer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Christ'nen zyn op aarde <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Om zich in des weerelds <rhyme label="b" type="f">zaaken</rhyme></l>
        <l id="s2:l3" met="2" type="+-">Te <rhyme label="b" type="f" corresp="#s2:l2">vermaken</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Hun Beroep is Jesus <rhyme label="c" type="m">Spoor</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Smaad <rhyme label="c" type="m" corresp="#s2:l4">daardoor</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Druk van buiten, druk van <rhyme label="b" type="f" corresp="#s2:l2">binnen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En dus 't ruime ryk te <rhyme label="b" type="f" corresp="#s2:l2">winnen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Waar in Jesus hen ging <rhyme label="c" type="m" corresp="#s2:l4">voor</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Kind'ren staam'len slegs <rhyme label="a" type="m">daarvan</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die nog zagte Spys <rhyme label="b" type="f">behoeven</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Maar de <rhyme label="b" type="f" corresp="#s3:l2">Proeven</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Wagten op de <rhyme label="c" type="m">Jong'lingschap</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Welker <rhyme label="c" type="m" corresp="#s3:l4">stap</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Vaster word, om <rhyme label="b" type="f" corresp="#s3:l2">onbesweken</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Door den vyand heen te <rhyme label="b" type="f" corresp="#s3:l2">breeken</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En te treÃªn in 't <rhyme label="c" type="m" corresp="#s3:l4">Vaderschap</rhyme>.</l>
      </lg>
    </lg>
