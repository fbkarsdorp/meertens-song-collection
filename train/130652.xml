  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wat baat het u te zyn <rhyme label="a" type="f">gesproten</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Uit oud en overedel <rhyme label="b" type="m">bloet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wat baat de zwagery der <rhyme label="a" type="f" corresp="#s1:l1">grooten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Zo gy alleen 's nags leggen <rhyme label="b" type="m" corresp="#s1:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat helpen Koninglijke <rhyme label="a" type="f">schatten</rhyme></l>
        <l id="s2:l2" met="4" type="-+">En renten van ontelbaar <rhyme label="b" type="m">goed</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ja, meer dan kist   en huis kan <rhyme label="a" type="f" corresp="#s2:l1">vatten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Zo gy alleen 's nags leggen <rhyme label="b" type="m" corresp="#s2:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat helpt de heerschappy van <rhyme label="a" type="f">landen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Van volk en steden die gy <rhyme label="b" type="m">hoed</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Schoon zy u torsten op hun <rhyme label="a" type="f" corresp="#s3:l1">handen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Zo gy alleen 's nags leggen <rhyme label="b" type="m" corresp="#s3:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Waar toe een langen sleep van <rhyme label="a" type="f">knegten</rhyme></l>
        <l id="s4:l2" met="4" type="-+">En met Levry bekleeden <rhyme label="b" type="m">stoet</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Die alles op uw wenk <rhyme label="a" type="f" corresp="#s4:l1">beslechten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">So gy alleen 's nags leggen <rhyme label="b" type="m" corresp="#s4:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Waar toe 't gestreel van keel en <rhyme label="a" type="f">snaren</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En wyn die zorg verstuiven <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Met al 't vermaak van bos en <rhyme label="a" type="f" corresp="#s5:l1">baren</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Zo gy alleen 's nags leggen <rhyme label="b" type="m" corresp="#s5:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wat geeft de lust van schoone <rhyme label="a" type="f">maagden</rhyme></l>
        <l id="s6:l2" met="4" type="-+">En heur gezelschap bly en <rhyme label="b" type="m">zoet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hoe loddrig   zy uw ziel <rhyme label="a" type="f" corresp="#s6:l1">belaagden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Zo gy alleen 's nags leggen <rhyme label="b" type="m" corresp="#s6:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Geslagt nog geld nog staat nog <rhyme label="a" type="f">magten</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Wanneer het Minnegoodje <rhyme label="b" type="m">woed</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Kan uwe zorg en kwalen <rhyme label="a" type="f" corresp="#s7:l1">zagten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Zo gy alleen 's nags leggen <rhyme label="b" type="m" corresp="#s7:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Al wat men lust noemt en <rhyme label="a" type="f">vermaaken</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Is ziel en lichaam niet dan <rhyme label="b" type="m">roet</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Voor wien de strenge min moet <rhyme label="a" type="f" corresp="#s8:l1">waaken</rhyme></l>
        <l id="s8:l4" met="4" type="-+">En die alleen 's nags leggen <rhyme label="b" type="m" corresp="#s8:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Voor my, om 't hart regt uit te <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Die nooit om groote schatten <rhyme label="b" type="m">wroet</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">'k Laat liever al dat zootje <rhyme label="a" type="f" corresp="#s9:l1">steeken</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Zo ik alleen 's nags leggen <rhyme label="b" type="m" corresp="#s9:l2">moet</rhyme>.</l>
      </lg>
    </lg>
