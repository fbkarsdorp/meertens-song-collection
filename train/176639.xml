    <melody>Hoe zalig zijn de landen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Die den wille des <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Weet en niet en <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wil hy hem niet <rhyme label="a" type="f" corresp="#s1:l1">bekeeren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hem naeckt veel <rhyme label="b" type="m" corresp="#s1:l2">teghenspoet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Veel slaghen sal hy <rhyme label="c" type="f">verwerven</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Al hy sal moeten <rhyme label="c" type="f" corresp="#s1:l5">sterven</rhyme></l>
        <l id="s1:l7" met="3" type="-+">En eeuwelijck <rhyme label="c" type="f" corresp="#s1:l5">bederven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Al in de Helsche <rhyme label="b" type="m" corresp="#s1:l2">gloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die de handt aen den <rhyme label="a" type="f">Ploegh-slaen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ende te rugghe <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Diens rijcke sal <rhyme label="a" type="f" corresp="#s2:l1">vergaen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In alsoo korten <rhyme label="b" type="m" corresp="#s2:l2">tien</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Want sy leven in <rhyme label="c" type="f">blame</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Tot Gods Rijck <rhyme label="c" type="f" corresp="#s2:l5">onbequame</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Sy verliesen haer <rhyme label="c" type="f" corresp="#s2:l5">name</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Lijden sal haer <rhyme label="b" type="m" corresp="#s2:l2">gheschien</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe dorst ghy ‘t pondt <rhyme label="a" type="f">aenvaerden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van Godt werdt ghy <rhyme label="b" type="m">begaeft</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ghy hebbet in der <rhyme label="a" type="f" corresp="#s3:l1">aerden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met grooten angst <rhyme label="b" type="m" corresp="#s3:l2">begraeft</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Maer als de Heere sal <rhyme label="c" type="f">vraghen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">U van sijn pondt <rhyme label="c" type="f" corresp="#s3:l5">ghewaghen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hoe sult ghy hem <rhyme label="c" type="f" corresp="#s3:l5">behaghen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Als ghy sult sijn <rhyme label="b" type="m" corresp="#s3:l2">versaecht</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wie sijn leven wil <rhyme label="a" type="f">vinden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">In deser werelt <rhyme label="b" type="m">wreedt</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Die sal ‘t als den <rhyme label="a" type="f" corresp="#s4:l1">onsinden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Verliesen, ‘t wert hem <rhyme label="b" type="m" corresp="#s4:l2">leedt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wien ‘t om ‘t woort Gods <rhyme label="c" type="f">ghepresen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Verliest, sal zaligh <rhyme label="c" type="f" corresp="#s4:l5">wesen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sijn lijden wert <rhyme label="c" type="f" corresp="#s4:l5">ghenesen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Godts Rijcke is hem <rhyme label="b" type="m" corresp="#s4:l2">bereedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dus laet ons t’allen <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Waken, bidden in den <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En Christus woort <rhyme label="a" type="f" corresp="#s5:l1">belijden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Voor de menschen <rhyme label="b" type="m" corresp="#s5:l2">onbevreest</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Soo sullen wy naemaels <rhyme label="c" type="f">leven</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Met Christo hoogh <rhyme label="c" type="f" corresp="#s5:l5">verheven</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Een Kroon sal hy ons <rhyme label="c" type="f" corresp="#s5:l5">gheven</rhyme></l>
        <l id="s5:l8" met="3" type="-+">In sijn Hemelsch’ <rhyme label="b" type="m" corresp="#s5:l2">Foreest</rhyme>.</l>
      </lg>
    </lg>
  </text>
