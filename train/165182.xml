  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">ZYt ghy <rhyme label="a" type="f">belaeden</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Met veel <rhyme label="a" type="f" corresp="#s1:l1">misdaeden</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Met veel <rhyme label="a" type="f" corresp="#s1:l1">misdaeden</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Ghy niet <rhyme label="b" type="f">wan-hopen</rhyme>;</l>
        <l id="s1:l5" met="3" type="+-">Maer met hert-zeer <rhyme label="b" type="f" corresp="#s1:l4">loopen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Tot den Heere <rhyme label="c" type="m">sult</rhyme>,</l>
        <l id="s1:l7" met="2" type="+-">O Sondaer! <rhyme label="d" type="f">Sondaer</rhyme>!</l>
        <l id="s1:l8" met="3" type="+-">En bekennen <rhyme label="c" type="m" corresp="#s1:l6">schult</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Siet den <rhyme label="a" type="f">Verrader</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Kent hem <rhyme label="a" type="f" corresp="#s2:l1">misdader</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Kent hem <rhyme label="a" type="f" corresp="#s2:l1">misdader</rhyme></l>
        <l id="s2:l4" met="2" type="-+">En geeft wel <rhyme label="b" type="f">weeder</rhyme></l>
        <l id="s2:l5" met="3" type="+-">'t Gelt met droefheyt <rhyme label="b" type="f" corresp="#s2:l4">teeder</rhyme>;</l>
        <l id="s2:l6" met="3" type="+-">Maer wan-hoopt <rhyme label="c" type="m">genaed'</rhyme>.</l>
        <l id="s2:l7" met="2" type="+-">O Sondaer! <rhyme label="d" type="f">Sondaer</rhyme>!</l>
        <l id="s2:l8" met="3" type="+-">Schouwt toch soo een <rhyme label="c" type="m" corresp="#s2:l6">quaedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Judas <rhyme label="a" type="f">mis-trouwen</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Hinck hem met <rhyme label="a" type="f" corresp="#s3:l1">touwen</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Hinck hem met <rhyme label="a" type="f" corresp="#s3:l1">touwen</rhyme></l>
        <l id="s3:l4" met="2" type="-+">En door dit <rhyme label="b" type="f">hangen</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Gaf sijn ziel <rhyme label="b" type="f" corresp="#s3:l4">gevangen</rhyme></l>
        <l id="s3:l6" met="3" type="+-">In des duyvels <rhyme label="c" type="m">net</rhyme>.</l>
        <l id="s3:l7" met="2" type="+-">O Sondaer! <rhyme label="d" type="f">Sondaer</rhyme>!</l>
        <l id="s3:l8" met="3" type="+-">Wort soo niet <rhyme label="c" type="m" corresp="#s3:l6">beset</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Maer wilt <rhyme label="a" type="f">bedaeren</rhyme>:</l>
        <l id="s4:l2" met="2" type="-+">Godt sal u <rhyme label="a" type="f" corresp="#s4:l1">spaeren</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Godt sal u <rhyme label="a" type="f" corresp="#s4:l1">spaeren</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Al zijn uw' <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Groot, en veel <rhyme label="b" type="f" corresp="#s4:l4">bevonden</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Maer met hoope <rhyme label="c" type="m">gaet</rhyme>.</l>
        <l id="s4:l7" met="2" type="+-">O Sondaer! <rhyme label="d" type="f">Sondaer</rhyme>!</l>
        <l id="s4:l8" met="3" type="+-">'t En is noyt te <rhyme label="c" type="m" corresp="#s4:l6">laet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Siet <rhyme label="a" type="f">Magdaleene</rhyme>:</l>
        <l id="s5:l2" met="2" type="-+">Siet Davidts <rhyme label="a" type="f" corresp="#s5:l1">weene</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Siet Davidts <rhyme label="a" type="f" corresp="#s5:l1">weene</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Siet Petri <rhyme label="b" type="f">traenen</rhyme></l>
        <l id="s5:l5" met="3" type="+-">U tot boet <rhyme label="b" type="f" corresp="#s5:l4">vermaenen</rhyme>.</l>
        <l id="s5:l6" met="3" type="+-">"Die op hope <rhyme label="c" type="m">bouwt</rhyme>,</l>
        <l id="s5:l7" met="2" type="+-">O Sondaer! <rhyme label="d" type="f">Sondaer</rhyme>!</l>
        <l id="s5:l8" met="3" type="+-">"En blijft noyt <rhyme label="c" type="m" corresp="#s5:l6">benouwt</rhyme>.</l>
      </lg>
    </lg>
  </text>
