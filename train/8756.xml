  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SEgt schoone Harderinne// die <rhyme label="a" type="f">'kminne</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Voogdesje van mijn <rhyme label="b" type="m">pijn</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Hoe komt dat ghy u <rhyme label="a" type="f" corresp="#s1:l1">sinne</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Afkeerigh toont van <rhyme label="b" type="m" corresp="#s1:l2">mijn</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Laet u mijn droevigh klagen, <rhyme label="a" type="f">behagen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Eer ghy 'tLichaem <rhyme label="b" type="m">ontsielt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Van een die alle <rhyme label="a" type="f" corresp="#s2:l1">daghen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gestadigh voor u <rhyme label="b" type="m" corresp="#s2:l2">knielt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Segt mijn Goddin wat rede// brenght <rhyme label="a" type="f">mede</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat gy voor my gaet <rhyme label="b" type="m">vlien</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als ick u brave <rhyme label="a" type="f" corresp="#s3:l1">leden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Door't minnen kom <rhyme label="b" type="m" corresp="#s3:l2">bespien</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Eens als gy door weyden, gingt <rhyme label="a" type="f">leyden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">V Vee ten Veld-waert <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">'t Welck my inwendich <rhyme label="a" type="f" corresp="#s4:l1">seyde</rhyme></l>
        <l id="s4:l4" met="3" type="-+">De Bode vande <rhyme label="b" type="m" corresp="#s4:l2">Min</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die mijn door zijn schoon spreken// en <rhyme label="a" type="f">smeken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">V stil deed volghen <rhyme label="b" type="m">naer</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Tot aende <rhyme label="a" type="f" corresp="#s5:l1">Water-beecken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Daer ghy my wiert <rhyme label="b" type="m" corresp="#s5:l2">ghewaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daer ghy u hielt verscholen, in <rhyme label="a" type="f">holen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En liet t' onnoosel <rhyme label="b" type="m">Vee</rhyme></l>
        <l id="s6:l3" met="3" type="-+">In eensaemheyt gaen <rhyme label="a" type="f" corresp="#s6:l1">doolen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Van d'een op d'ander <rhyme label="b" type="m" corresp="#s6:l2">stee</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Denct vry hoe my het herte, met <rhyme label="a" type="f">smerte</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van binnen wiert <rhyme label="b" type="m">vervult</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Daer my u Min toe <rhyme label="a" type="f" corresp="#s7:l1">tarten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Door mijn Trou in <rhyme label="b" type="m" corresp="#s7:l2">gedult</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nimphje wilt doch dees klachte// <rhyme label="a" type="f">betrachte</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Verlost my uyt dees <rhyme label="b" type="m">Vlam</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Waer in ick nu moet <rhyme label="a" type="f" corresp="#s8:l1">smachten</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En sterven als een <rhyme label="b" type="m" corresp="#s8:l2">Lam</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
