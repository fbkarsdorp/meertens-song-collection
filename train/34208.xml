  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Vrienden laet ons vrolyck <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ieder voeght hem aen den <rhyme label="b" type="m">dis</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Daer is eenen vrindt <rhyme label="a" type="f" corresp="#s1:l1">verresen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Syn bedryf vol blyschap <rhyme label="b" type="m" corresp="#s1:l2">is</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Laet ons met een bly <rhyme label="c" type="m">ghelaet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Hem onthaelen metter <rhyme label="c" type="m" corresp="#s1:l5">daet</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Ey, siet dat ghy niet en <rhyme label="d" type="m">droomt</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Want den vasten avont <rhyme label="d" type="m" corresp="#s1:l7">komt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Komt laet ons hem nu <rhyme label="a" type="f">onthaelen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Maeckt met lust een soet <rhyme label="b" type="m">gheklanck</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Ach! en blyft niet langher <rhyme label="a" type="f" corresp="#s2:l1">draelen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hy neemt sulcken vreught in <rhyme label="b" type="m" corresp="#s2:l2">danck</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Neemt de Schup, de Tangh, en <rhyme label="c" type="m">Lat</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Rooster, Soutvat, elcke <rhyme label="c" type="m" corresp="#s2:l5">wat</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Elck met lust, en vreughden <rhyme label="d" type="m">romt</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Want den vasten avont <rhyme label="d" type="m" corresp="#s2:l7">komt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hy is vet, en plomp van <rhyme label="a" type="f">leden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Maer heel milde daer-men <rhyme label="b" type="m">acht</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Hy wenscht hem daer elck in <rhyme label="a" type="f" corresp="#s3:l1">vrede</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Danst, en springht, uyt luste <rhyme label="b" type="m" corresp="#s3:l2">lacht</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Laet ons behouden den <rhyme label="c" type="m">vrint</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Niemant is met druck <rhyme label="c" type="m" corresp="#s3:l5">ghedient</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Elck den druck tot sterven <rhyme label="d" type="m">domt</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Want den vasten avont <rhyme label="d" type="m" corresp="#s3:l7">komt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Willen wy hem dan <rhyme label="a" type="f">behouwen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Soo met elck een volle <rhyme label="b" type="m">snel</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Met lust door syn keel-gat <rhyme label="a" type="f" corresp="#s4:l1">douwen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Sulcken dronck bevalt hem <rhyme label="b" type="m" corresp="#s4:l2">wel</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Komt, komt niet langher <rhyme label="c" type="m">ghetoeft</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Elck weet wat daer naer <rhyme label="c" type="m" corresp="#s4:l5">behoeft</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Naer 'tghebuys dient me <rhyme label="d" type="m">ghebromt</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Want den vasten avont <rhyme label="d" type="m" corresp="#s4:l7">komt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
