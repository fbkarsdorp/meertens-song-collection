    <melody>Ik kwam nog gisteravond voorwaar ik en lieg u niet</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IC quam noch gister <rhyme label="a" type="f">auont</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">Voorwaer ic en liege v <rhyme label="b" type="m">niet</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Daer quam een meisken wter <rhyme label="c" type="f">hagen</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Si was gecleet gelijc een <rhyme label="c" type="f" corresp="#s1:l3">pagie</rhyme></l>
        <l id="s1:l5" met="3" type="-+">En was dat niet swaer <rhyme label="b" type="m" corresp="#s1:l2">verdriet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Pagie wel lieue <rhyme label="a" type="f">pagie</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Waer is v heer? mi <rhyme label="b" type="m">verstaet</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Mijn heer heeft mi <rhyme label="c" type="f">verlaten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dus moet ic dolen lancx der <rhyme label="c" type="f" corresp="#s2:l3">straten</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ick en weet mijns gheenen <rhyme label="b" type="m" corresp="#s2:l2">raet</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Goeden raet sal ic v <rhyme label="a" type="f">gheuen</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Laet ons gaen drincken den <rhyme label="b" type="m">wijn</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Want mi dunct aen v <rhyme label="c" type="f">visagie</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ghi en zijt gheens heeren <rhyme label="c" type="f" corresp="#s3:l3">pagie</rhyme></l>
        <l id="s3:l5" met="3" type="-+">En ghi sijt een fier <rhyme label="b" type="m" corresp="#s3:l2">maechdelijn</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Oft ick een maechdelijn <rhyme label="a" type="f">ware</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wat leyt daer yemant <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Laet ons te samen gaen <rhyme label="c" type="f">wanderen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Vanden eenen altotten <rhyme label="c" type="f" corresp="#s4:l3">anderen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Wi sullen ghenoechte <rhyme label="b" type="m" corresp="#s4:l2">ontfaen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daer ghinghen si henen <rhyme label="a" type="f">sluypen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ghelijck een hoender <rhyme label="b" type="m">dief</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Van daer tot achter die <rhyme label="c" type="f">vesten</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Om vrou venus brant te <rhyme label="c" type="f" corresp="#s5:l3">lesschen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Daer creech hem die pagie <rhyme label="b" type="m" corresp="#s5:l2">lief</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Pagie wel lieue <rhyme label="a" type="f">pagie</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wi twee wi zijn <rhyme label="b" type="m">ghemelt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">En comt niet meer so laet int <rhyme label="c" type="f">doncker</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Om te spelen met uwen <rhyme label="c" type="f" corresp="#s6:l3">ioncker</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Oft ghi sout verdienen <rhyme label="b" type="m" corresp="#s6:l2">tghelt</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer die dit liedeken <rhyme label="a" type="f">dichte</rhyme></l>
        <l id="s7:l2" met="3" type="-+">dat was een ionghelinck <rhyme label="b" type="m">fijn</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Hi heuet so wel <rhyme label="c" type="f">ghesonghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">God schende quade nijders <rhyme label="c" type="f" corresp="#s7:l3">tonghen</rhyme> |</l>
        <l id="s7:l5" met="3" type="-+">Met zijn lieueken inden <rhyme label="b" type="m" corresp="#s7:l2">wijn</rhyme></l>
      </lg>
    </lg>
  </text>
