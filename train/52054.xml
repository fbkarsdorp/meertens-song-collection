<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>52054</id>
    <date>
      <year-start>1776</year-start>
      <year-end>1800</year-end>
    </date>
    <tags>
      <tag standard-name="kluchtlied" translation="humorous song">kluchtlied</tag>
    </tags>
    <melody>Jonkmans als gij de liefde kent</melody>
    <categories>
      <category translation="amusement">vermaak</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Jongmans als gy de liefde <rhyme label="a" type="m">kent</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wat zyn de Meisjes <rhyme label="b" type="f">ingreable</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Zy gaan te Brussel, Bruggen en <rhyme label="a" type="m" corresp="#s1:l1">Gent</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Zoo net gekleet als <rhyme label="b" type="f" corresp="#s1:l2">increable</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Gy Jongmans van de eerste <rhyme label="c" type="m">pronk</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">De Linte waar mee zy hun <rhyme label="d" type="f">versieren</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Een charmant hoedken op hun <rhyme label="c" type="m" corresp="#s1:l5">bol</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Wie zou daar niet op <rhyme label="d" type="f" corresp="#s1:l6">verlieven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Zy zyn heel wonderlyk van <rhyme label="a" type="m">glans</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Als menze komt te <rhyme label="b" type="f">belette</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'t Is om te lokke de <rhyme label="a" type="m" corresp="#s2:l1">Jongmans</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daar veele Meisjes hun <rhyme label="b" type="f" corresp="#s2:l2">blankette</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Een Winkel wel van vooren <rhyme label="c" type="m">gezet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Doet dagelyks de Koopliede <rhyme label="d" type="f">Winkele</rhyme>;</l>
        <l id="s2:l7" met="4" type="-+">Is het Meisje schoon en <rhyme label="c" type="m" corresp="#s2:l5">net</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Zy doen de Jongmans op haar <rhyme label="d" type="f" corresp="#s2:l6">denken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laat dan jou lieve voetjes <rhyme label="a" type="m">zien</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Zy draage Schoentjes met lange <rhyme label="b" type="f">lippe</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Zy weeten wat 'er moet <rhyme label="a" type="m" corresp="#s3:l1">geschien</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Om de Jongmans te kunne <rhyme label="b" type="f" corresp="#s3:l2">knippe</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">De Musse en Jakjes van <rhyme label="c" type="m">Parys</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Maake haar teede schoone en <rhyme label="d" type="f">wonder</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Maar Jongmans als je wilt weeze <rhyme label="c" type="m" corresp="#s3:l5">wys</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Beziet ze van bove tot van <rhyme label="d" type="f" corresp="#s3:l6">onder</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wat doet een Meisje om te zyn <rhyme label="a" type="m">gevryt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die deeze nieuwe Modes <rhyme label="b" type="f">draagen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ja veele Jongmans in deeze <rhyme label="a" type="m" corresp="#s4:l1">tyd</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Scheppen daar in veel <rhyme label="b" type="f" corresp="#s4:l2">behaagen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Maar die meer deugt als schoonheid <rhyme label="c" type="m">draagt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Die zou die Modens pop <rhyme label="d" type="f">bedanken</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Men koop het slegste Vrouw <rhyme label="c" type="m" corresp="#s4:l5">geslagt</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Te Amsterdam voor twee drie <rhyme label="d" type="f" corresp="#s4:l6">blanken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
