  <author>Frans de Cort</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Een brave gezel, eene lieve <rhyme label="a" type="m">maagd</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Als die te zamen <rhyme label="b" type="f">vrijen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dan is er niemendallen <rhyme label="a" type="m" corresp="#s1:l1">gewaagd</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met ze vrij te laten <rhyme label="b" type="f" corresp="#s1:l2">betijen</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Een brave gezel, eene lieve <rhyme label="a" type="m" corresp="#s1:l1">maagd</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Als die elkander <rhyme label="c" type="f">beminnen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Dan hoeft er gewo-gen, gewikt noch <rhyme label="a" type="m" corresp="#s1:l1">ge-zaagd</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Dan valt er niet te <rhyme label="c" type="f" corresp="#s1:l6">verzinnen</rhyme>.</l>
        <l id="s1:l9" met="4" type="-+">Een brave gezel, eene lieve <rhyme label="a" type="m" corresp="#s1:l1">maagd</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Als die elkander <rhyme label="c" type="f" corresp="#s1:l6">beminnen</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Dan hoeft er gewo-gen, gewikt noch <rhyme label="a" type="m" corresp="#s1:l1">ge-zaagd</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Dan valt er niet te <rhyme label="c" type="f" corresp="#s1:l6">verzinnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Een brave gezel, eene lieve <rhyme label="a" type="m">maagd</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Behooren natuurlijk te <rhyme label="b" type="f">zamen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En de ouders, wordt hun woord <rhyme label="a" type="m" corresp="#s2:l1">gevraagd</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ze moeten maar zeggen: <rhyme label="b" type="f" corresp="#s2:l2">amen</rhyme>!</l>
        <l id="s2:l5" met="4" type="-+">Een brave gezel, eene lieve <rhyme label="a" type="m" corresp="#s2:l1">maagd</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Laat ze gaan hunne eigene <rhyme label="c" type="f">wegen</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">De liefde, hunne geleidster, <rhyme label="a" type="m" corresp="#s2:l1">draagt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Met zich des hemels <rhyme label="c" type="f" corresp="#s2:l6">zegen</rhyme>!</l>
        <l id="s2:l9" met="4" type="-+">Een brave gezel, eene lieve <rhyme label="a" type="m" corresp="#s2:l1">maagd</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Laat ze gaan hunne eigene <rhyme label="c" type="f" corresp="#s2:l6">wegen</rhyme>:</l>
        <l id="s2:l11" met="4" type="+-">De liefde, hunne geleidster, <rhyme label="a" type="m" corresp="#s2:l1">draagt</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Met zich des hemels <rhyme label="c" type="f" corresp="#s2:l6">zegen</rhyme>!</l>
      </lg>
    </lg>
  </text>
