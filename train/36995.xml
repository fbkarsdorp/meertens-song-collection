  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs Claes sou ten trouwen <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Gingh den Vent staen <rhyme label="b" type="f">grysen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Vaerken sprack syn Claesken <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Om hem t'onder <rhyme label="b" type="f" corresp="#s1:l2">wysen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Trouwde ghy met uwen <rhyme label="c" type="m">danck</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Waerom dan snot ellen <rhyme label="c" type="m" corresp="#s1:l5">lanck</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Gaen kryten, gaen kryten, gaen <rhyme label="d" type="f">kryten</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Jae seyd' Claesken, maer ick <rhyme label="e" type="m">vrees</rhyme></l>
        <l id="s1:l9" met="4" type="+-">Dat my Griet dat quaet stuck <rhyme label="e" type="m" corresp="#s1:l8">vlees</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Sal smyten, sal smyten, sal <rhyme label="d" type="f" corresp="#s1:l7">smyten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Vaerken het gaet nu al <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Maer 't en sal niet <rhyme label="b" type="f">duren</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Griet is al te quaden <rhyme label="a" type="m" corresp="#s2:l1">Vel</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Griet steckt vol quay <rhyme label="b" type="f" corresp="#s2:l2">kuren</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Als den Speel-man sit op 't <rhyme label="c" type="m">dack</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Is het blydtschap en <rhyme label="c" type="m" corresp="#s2:l5">ghemack</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Te trouwen, te Trouwen, te <rhyme label="d" type="f">trouwen</rhyme>.</l>
        <l id="s2:l8" met="4" type="+-">Soo langh als ick Bruyloft <rhyme label="e" type="m">houw</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Soo langh sou ick van de <rhyme label="e" type="m" corresp="#s2:l8">trouw</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Wel houwen, wel houwen, wel <rhyme label="d" type="f" corresp="#s2:l7">houwen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Eenen dagh is 't spel en <rhyme label="a" type="m">sanck</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Als de Velen <rhyme label="b" type="f">quelen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Maer ick sal het heel jaer <rhyme label="a" type="m" corresp="#s3:l1">lanck</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Op den Kryter <rhyme label="b" type="f" corresp="#s3:l2">spelen</rhyme></l>
        <l id="s3:l5" met="4" type="+-">De Pastey-korst die ick <rhyme label="c" type="m">knaegh</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Sal daernaer suer aen myn <rhyme label="c" type="m" corresp="#s3:l5">maeg</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Op komen, op-komen, <rhyme label="d" type="f">op-komen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Daerom is 't dat ick wel <rhyme label="e" type="m">wouw</rhyme></l>
        <l id="s3:l9" met="4" type="+-">Dat ick noyt en hadt een <rhyme label="e" type="m" corresp="#s3:l8">Vrouw</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Genomen, genomen, <rhyme label="d" type="f" corresp="#s3:l7">genomen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vreught keert haest in <rhyme label="a" type="m">on-genoeght</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Lieven keert in <rhyme label="b" type="f">lyden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Wat dat Venus samen <rhyme label="a" type="m" corresp="#s4:l1">voeght</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Sal den kluppel <rhyme label="b" type="f" corresp="#s4:l2">scheyden</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En als kluppelen valt <rhyme label="c" type="m">troef</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Valt my dien troef niet <rhyme label="c" type="m" corresp="#s4:l5">droef</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Om smaken, om smaken, om <rhyme label="d" type="f">smaken</rhyme>?</l>
        <l id="s4:l8" met="4" type="+-">Cupido is loos en <rhyme label="e" type="m">leep</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Hy weet van den Boog een <rhyme label="e" type="m" corresp="#s4:l8">sweep</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Te maken, te maken, te <rhyme label="d" type="f" corresp="#s4:l7">maken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Weest niet haestig tot de <rhyme label="a" type="m">trouw</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Spoeyt met traghe <rhyme label="b" type="f">ganghen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Men magh nievers in zyn <rhyme label="a" type="m" corresp="#s5:l1">gouw</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Als in Vloeyen <rhyme label="b" type="f" corresp="#s5:l2">vanghen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Als gy trout, en trout niet <rhyme label="c" type="m">vroegh</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Maer ghy moght wel vroegh <rhyme label="c" type="m" corresp="#s5:l5">ghenoegh</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Ombyten, ombyten, <rhyme label="d" type="f">ombyten</rhyme>.</l>
        <l id="s5:l8" met="4" type="+-">Soo en suldy (my <rhyme label="e" type="m">ghelooft</rhyme>)</l>
        <l id="s5:l9" met="4" type="+-">Gelyck Claes van pyn in 't <rhyme label="e" type="m" corresp="#s5:l8">hooft</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Niet kryten, niet kryten, niet <rhyme label="d" type="f" corresp="#s5:l7">kryten</rhyme>.</l>
      </lg>
    </lg>
  </text>
