      <category translation="religion">godsdienst</category>
    </categories>
  <author>Karel van Mander</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AL die daer zijn <rhyme label="a" type="f">beladen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met hare zonden <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Door leetwesens <rhyme label="c" type="m">ghepijn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Te gaen wort haer <rhyme label="a" type="f" corresp="#s1:l1">gheraden</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Tot Christum, want hy <rhyme label="b" type="m" corresp="#s1:l2">haer</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Roept, als goet <rhyme label="c" type="m" corresp="#s1:l3">Medicijn</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Comt in mijn jock end' <rhyme label="c" type="m" corresp="#s1:l3">lijn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">End' mijn schole <rhyme label="d" type="f">leeren</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Sachtmoet ende <rhyme label="e" type="m">ootmoet</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Soo sal dan't uwaert <rhyme label="d" type="f" corresp="#s1:l8">keeren</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s1:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Neemt op s'Heeren <rhyme label="a" type="f">gheboden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">T'goet jock, door <rhyme label="b" type="m">onderscheyt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Der kennissen, als <rhyme label="c" type="m">die</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Nu te recht zijt <rhyme label="a" type="f" corresp="#s2:l1">ontvloden</rhyme></l>
        <l id="s2:l5" met="3" type="-+">S'weerelts <rhyme label="b" type="m" corresp="#s2:l2">onsuyverheyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Der zonden <rhyme label="c" type="m" corresp="#s2:l3">slavernije</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Laet die gheen <rhyme label="c" type="m" corresp="#s2:l3">heerschappije</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Meer over t'lichaem <rhyme label="d" type="f">drijven</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Verwinnet quaet mer <rhyme label="e" type="m">t'goet</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Soo sal in u <rhyme label="d" type="f" corresp="#s2:l8">beclijven</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s2:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Niet en hebben sy <rhyme label="a" type="f">vrede</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die daer woest ende <rhyme label="b" type="m">wilt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Godtloos leven <rhyme label="c" type="m">rebel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghelijck de Zee sy <rhyme label="a" type="f" corresp="#s3:l1">mede</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Niet connen zijn <rhyme label="b" type="m" corresp="#s3:l2">ghestilt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Maer die Godt vreesen <rhyme label="c" type="m" corresp="#s3:l3">wel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">End' houden sijn <rhyme label="c" type="m" corresp="#s3:l3">bevel</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Vrede comt haer <rhyme label="d" type="f">beneven</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Als eenen water <rhyme label="e" type="m">vloet</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Soo dat haer wort <rhyme label="d" type="f" corresp="#s3:l8">ghegheven</rhyme></l>
        <l id="s3:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s3:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als t'herte gantsch is <rhyme label="a" type="f">veylich</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van boosheyt int <rhyme label="b" type="m">ghemeyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">End' daer in is <rhyme label="c" type="m">gheplant</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Gods woordt suyver end' <rhyme label="a" type="f" corresp="#s4:l1">heylich</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Soo wort dat herte <rhyme label="b" type="m" corresp="#s4:l2">reyn</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Jae ghemoedt end' <rhyme label="c" type="m" corresp="#s4:l3">verstant</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Door het gheloove, <rhyme label="c" type="m" corresp="#s4:l3">want</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Die t'woordt oprecht <rhyme label="d" type="f">bewaren</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Worden daer door <rhyme label="e" type="m">ghevoedt</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Gods Gheest sal in haer <rhyme label="d" type="f" corresp="#s4:l8">baren</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s4:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Uwen lust zy, o <rhyme label="a" type="f">Menschen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Aen den Heere <rhyme label="b" type="m">minioot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die u dan gheven <rhyme label="c" type="m">sal</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Wat u herte mach <rhyme label="a" type="f" corresp="#s5:l1">wenschen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dus uwe weghen <rhyme label="b" type="m" corresp="#s5:l2">bloot</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Wilt hem bevelen <rhyme label="c" type="m" corresp="#s5:l3">al</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">End' sonder veel <rhyme label="c" type="m" corresp="#s5:l3">gheschal</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Zijt stille, ende <rhyme label="d" type="f">wachtet</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Op hem, wat dat ghy <rhyme label="e" type="m">doet</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Op dat ghy soo <rhyme label="d" type="f" corresp="#s5:l8">betrachtet</rhyme></l>
        <l id="s5:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s5:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Als door een Zuydich <rhyme label="a" type="f">waeyen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Van dat nieu <rhyme label="b" type="m">Testament</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">T'herte scheurt ende <rhyme label="c" type="m">beeft</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Met een vyerich <rhyme label="a" type="f" corresp="#s6:l1">doorlaeyen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">s'Heeren Gheest daer <rhyme label="b" type="m" corresp="#s6:l2">ontrent</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Gheerne sijn plaetse <rhyme label="c" type="m" corresp="#s6:l3">heeft</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dan comt de Heer end' <rhyme label="c" type="m" corresp="#s6:l3">gheeft</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Een stille sachte <rhyme label="d" type="f">suyghen</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Daer siet men den Gheest <rhyme label="e" type="m">vroet</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Met sijn vruchten <rhyme label="d" type="f" corresp="#s6:l8">betuyghen</rhyme></l>
        <l id="s6:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s6:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Niet meer leeren <rhyme label="a" type="f">oorloghen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En sal het volck nu <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Maer vry end' <rhyme label="c" type="m">onvervaert</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Sal een yeghelijck <rhyme label="a" type="f" corresp="#s7:l1">moghen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Woonen met goet <rhyme label="b" type="m" corresp="#s7:l2">accoort</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Onder sijnen <rhyme label="c" type="m" corresp="#s7:l3">wijngaet</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">End' Vijgheboom <rhyme label="c" type="m" corresp="#s7:l3">vermaert</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Die soecken moghen <rhyme label="d" type="f">vinden</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Vrucht end' schaduw <rhyme label="e" type="m">behoet</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Onder Zions <rhyme label="d" type="f" corresp="#s7:l8">beminden</rhyme>,</l>
        <l id="s7:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s7:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghy Dochteren <rhyme label="a" type="f">ydoone</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van Jerusalem, <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Den Bruydegom die <rhyme label="c" type="m">seyt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En weckt niet mijn <rhyme label="a" type="f" corresp="#s8:l1">schoone</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Bruydt noch en roertse <rhyme label="b" type="m" corresp="#s8:l2">niet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Die in mijn armen <rhyme label="c" type="m" corresp="#s8:l3">leyt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">End' in roosen <rhyme label="c" type="m" corresp="#s8:l3">weyt</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Gheduerende de <rhyme label="d" type="f">quale</rhyme></l>
        <l id="s8:l9" met="3" type="-+">Van tribulacy <rhyme label="e" type="m">gloet</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Op datse niet en <rhyme label="d" type="f" corresp="#s8:l8">fale</rhyme></l>
        <l id="s8:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s8:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Haghel werdt in den <rhyme label="a" type="f">woude</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Soo spreeckt de Heere, <rhyme label="b" type="m">maer</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Mijn volck sal woonen <rhyme label="c" type="m">vry</rhyme></l>
        <l id="s9:l4" met="3" type="-+">In des vreeds huysen <rhyme label="a" type="f" corresp="#s9:l1">boude</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">In stoute rust, al <rhyme label="b" type="m" corresp="#s9:l2">waer</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Eeuwighe stilte <rhyme label="c" type="m" corresp="#s9:l3">zy</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Onsen vrede is <rhyme label="c" type="m" corresp="#s9:l3">hy</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Die vrede heeft <rhyme label="d" type="f">vercreghen</rhyme></l>
        <l id="s9:l9" met="3" type="-+">Aen t'cruyce met sijn <rhyme label="e" type="m">bloedt</rhyme>,</l>
        <l id="s9:l10" met="3" type="-+">In hem is gantsch <rhyme label="d" type="f" corresp="#s9:l8">gheleghen</rhyme></l>
        <l id="s9:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s9:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Eenen Gheest stil end' <rhyme label="a" type="f">sachtich</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Daer med' moet zijn <rhyme label="b" type="m">verciert</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Nae s'Heeren wil end' <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">De Mensche, die <rhyme label="a" type="f" corresp="#s10:l1">eendrachtich</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Onsienelijck <rhyme label="b" type="m" corresp="#s10:l2">logiert</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">In't herte wel <rhyme label="c" type="m" corresp="#s10:l3">gherust</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Daer gherechticheyt <rhyme label="c" type="m" corresp="#s10:l3">kust</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Den vrede, en daer <rhyme label="d" type="f">trouwe</rhyme></l>
        <l id="s10:l9" met="3" type="-+">Goetheyt comt te <rhyme label="e" type="m">ghemoet</rhyme>,</l>
        <l id="s10:l10" met="3" type="-+">Daer spruyt in die <rhyme label="d" type="f" corresp="#s10:l8">landouwe</rhyme></l>
        <l id="s10:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s10:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Noch een ruste <rhyme label="a" type="f">bequame</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Is voor Gods volck <rhyme label="b" type="m">present</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Beter als in <rhyme label="c" type="m">Canaan</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Maer in des Heeren <rhyme label="a" type="f" corresp="#s11:l1">Name</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Soo wie hem recht <rhyme label="b" type="m" corresp="#s11:l2">bekent</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Sonder wijcken daer <rhyme label="c" type="m" corresp="#s11:l3">van</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Sijn hope worden <rhyme label="c" type="m" corresp="#s11:l3">can</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Levendich ende <rhyme label="d" type="f">crachtich</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">Met s'Heeren vrede <rhyme label="e" type="m">goet</rhyme></l>
        <l id="s11:l10" met="3" type="-+">Naemaels te zijn <rhyme label="d" type="f" corresp="#s11:l8">deelachtich</rhyme></l>
        <l id="s11:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s11:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">T'is recht, by onsen <rhyme label="a" type="f">Prince</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Druck te verghelden <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Die u bedroeven <rhyme label="c" type="m">saen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Hier in s'weerelts <rhyme label="a" type="f" corresp="#s12:l1">province</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Maer ghy die lijdt <rhyme label="b" type="m" corresp="#s12:l2">ghequel</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Hoort Paulus soet <rhyme label="c" type="m" corresp="#s12:l3">vermaen</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Ghy sult (seyt hy) <rhyme label="c" type="m" corresp="#s12:l3">ontfaen</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Met ons ruste <rhyme label="d" type="f">ghepresen</rhyme>,</l>
        <l id="s12:l9" met="3" type="-+">In Gods rijcke met <rhyme label="e" type="m">spoet</rhyme>,</l>
        <l id="s12:l10" met="3" type="-+">Dits in volcomen <rhyme label="d" type="f" corresp="#s12:l8">wesen</rhyme></l>
        <l id="s12:l11" met="3" type="+-">Der Zielen ruste <rhyme label="e" type="m" corresp="#s12:l9">soet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
