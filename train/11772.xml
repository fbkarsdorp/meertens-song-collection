<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11772</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Ach schone Cariclea</melody>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe dat een strengh <rhyme label="a" type="m">gemoedt</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Door 's Vrouwen deughd seer dickwils wert <rhyme label="b" type="m">versacht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat stribligh en <rhyme label="a" type="m" corresp="#s1:l1">verwoet</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Alleen op straf en wraeck-lust was <rhyme label="b" type="m" corresp="#s1:l2">bedacht</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Soo werckt nochtans der Vrouwen <rhyme label="c" type="m">aert</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat sich de gramschap self <rhyme label="c" type="m" corresp="#s1:l5">bedaert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als David sijn <rhyme label="a" type="m">gesin</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Tot Nabal sandt, om spijs, tot <rhyme label="b" type="m">onderhoudt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En liet uyt goeder <rhyme label="a" type="m" corresp="#s2:l1">Min'</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Hem groeten: sprack hy schamperlijck en <rhyme label="b" type="m" corresp="#s2:l2">stout</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Hy had met David niet te <rhyme label="c" type="m">doen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Maer most daer mee sijn Herders <rhyme label="c" type="m" corresp="#s2:l5">voen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dies David gantsch <rhyme label="a" type="m">ontstelt</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Sijn Knapen rust en moedight totten <rhyme label="b" type="m">tocht</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Op datter stracks in 't <rhyme label="a" type="m" corresp="#s3:l1">veldt</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Al Nabals volck sou werden <rhyme label="b" type="m" corresp="#s3:l2">omgebrocht</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Abigail die dit <rhyme label="c" type="m">verstondt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Bedachte stracks een kloecke <rhyme label="c" type="m" corresp="#s3:l5">vont</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Abigail was <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Een Vrouw met wijsheydt en met re'en <rhyme label="b" type="m">begaeft</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die 's Mans verlepte <rhyme label="a" type="m" corresp="#s4:l1">hoon</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Door zeedigheydt en kloeck beleydt <rhyme label="b" type="m" corresp="#s4:l2">begraeft</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Sy rust haer Ezels en <rhyme label="c" type="m">gespan</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Voor 't onverstandt van haren <rhyme label="c" type="m" corresp="#s4:l5">Man</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy laed' daer vlees en <rhyme label="a" type="m">broodt</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">Veel malse Vijgen, Meel en <rhyme label="b" type="m">langh-Razijn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Om soo 't ontgaen den <rhyme label="a" type="m" corresp="#s5:l1">noodt</rhyme>,</l>
        <l id="s5:l4" met="5" type="-+">Daer by twee flesschen vol muschate <rhyme label="b" type="m" corresp="#s5:l2">wijn</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Om soo getroost haer gunst te <rhyme label="c" type="m">bien</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En soo des Veldt-heers grim <rhyme label="c" type="m" corresp="#s5:l5">t'ontvlien</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sy stijght van d'Ezel <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">En viel voor David op haer aensicht <rhyme label="b" type="m">neer</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">O Heldt! versoet u <rhyme label="a" type="m" corresp="#s6:l1">straf</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">Betoomt u drift, en let doch op u <rhyme label="b" type="m" corresp="#s6:l2">eer</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Mijn Man soo dwaes als <rhyme label="c" type="m">onbedocht</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Heeft ons in dese ramp <rhyme label="c" type="m" corresp="#s6:l5">gebrocht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Soo waer de Heere <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Die heeft belet dat ghy geen bloedt en <rhyme label="b" type="m">plenght</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Ons onschult plaetse <rhyme label="a" type="m" corresp="#s7:l1">geeft</rhyme>,</l>
        <l id="s7:l4" met="5" type="-+">Op dat u ziel dees wreedheyt niet <rhyme label="b" type="m" corresp="#s7:l2">gehenght</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Wy brengen u tot <rhyme label="c" type="m">onderstant</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Den zegen van ons Vee en <rhyme label="c" type="m" corresp="#s7:l5">Landt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Vergeeft o Heer! ons <rhyme label="a" type="m">quaed</rhyme>,</l>
        <l id="s8:l2" met="5" type="-+">Godt sal u Huys verrijcken en <rhyme label="b" type="m">geslacht</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dus schenckt ons u <rhyme label="a" type="m" corresp="#s8:l1">genaed</rhyme>,</l>
        <l id="s8:l4" met="5" type="-+">V vyanden hy geven sal in uwe <rhyme label="b" type="m" corresp="#s8:l2">macht</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">En als u Godt dees weldaed <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Gedenckt dan wederom het <rhyme label="c" type="m" corresp="#s8:l5">goet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Gelooft zy Godt den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s9:l2" met="5" type="-+">Sprack David, die u heden tot my <rhyme label="b" type="m">sendt</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Gezegent noch veel <rhyme label="a" type="m" corresp="#s9:l1">meer</rhyme>,</l>
        <l id="s9:l4" met="5" type="-+">Dat ick mijn handen oock niet heb <rhyme label="b" type="m" corresp="#s9:l2">geschent</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">V reden met de deughd <rhyme label="c" type="m">vereent</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Vermurwen 't hert, hoe 't was <rhyme label="c" type="m" corresp="#s9:l5">versteent</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ick neem u gaven <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s10:l2" met="5" type="-+">En spreeck, soo waer de Godt Israels <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">'t En waer ghy 't had <rhyme label="a" type="m" corresp="#s10:l1">gedaen</rhyme>,</l>
        <l id="s10:l4" met="5" type="-+">V Man en volck waer door het swaerd <rhyme label="b" type="m" corresp="#s10:l2">gesneeft</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Dus treckt met vrede nae u <rhyme label="c" type="m">Man</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Want u gesmeeck my stillen <rhyme label="c" type="m" corresp="#s10:l5">kan</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
