  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SOo ghy wilt vreuchdigh <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Doet ons te drincken <rhyme label="a" type="f" corresp="#s1:l1">gheven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Van s'morghens tot den <rhyme label="b" type="m">nacht</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Doet volle stoopen <rhyme label="c" type="f">tappen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Om door de keel te <rhyme label="c" type="f" corresp="#s1:l4">lappen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat elck van vreuchden <rhyme label="b" type="m" corresp="#s1:l3">lacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Den Weerdt die kent syn <rhyme label="a" type="f">gilden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die lustigh zyn, en <rhyme label="a" type="f" corresp="#s2:l1">milde</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En doen hem druck, noch <rhyme label="b" type="m">pyn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die 'tbeste kan bescheet <rhyme label="c" type="f">doen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die sal hem 'tminste leet <rhyme label="c" type="f" corresp="#s2:l4">doen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En sal hy dienstigh <rhyme label="b" type="m" corresp="#s2:l3">zyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Heeft iemant een <rhyme label="a" type="f">Beminde</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat hy 'them <rhyme label="a" type="f" corresp="#s3:l1">onder-winde</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Te drincken tot haer <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En die daer een ghebreck <rhyme label="c" type="f">heeft</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat hy niet als een geck <rhyme label="c" type="f" corresp="#s3:l4">leeft</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Maer drinckt soo veel te <rhyme label="b" type="m" corresp="#s3:l3">meer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Laet vry de oorloghs <rhyme label="a" type="f">knechten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met roers, en deghens <rhyme label="a" type="f" corresp="#s4:l1">vechtens</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wy stryden met de <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Men kent hier gheen <rhyme label="c" type="f">vyanden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die 'tnat giet door syn <rhyme label="c" type="f" corresp="#s4:l4">tanden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Is hier een oorloghs <rhyme label="b" type="m" corresp="#s4:l3">man</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gheen scheut sal ons <rhyme label="a" type="f">bedrieghen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Terwyl de teughen <rhyme label="a" type="f" corresp="#s5:l1">vlieghen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Van ieders borst, op <rhyme label="b" type="m">borst</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die 'tbest het lyf sal <rhyme label="c" type="f">waeghen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Sal 'tbuyckxken vol t'huys <rhyme label="c" type="f" corresp="#s5:l4">draeghen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En slaepen sonder <rhyme label="b" type="m" corresp="#s5:l3">dorst</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Heeft iemant lust in 't <rhyme label="a" type="f">roocken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die magh een pypken <rhyme label="a" type="f" corresp="#s6:l1">smoocken</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Want daer op smaeckt den <rhyme label="b" type="m">dranck</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En die den neus wilt deucht <rhyme label="c" type="f">doen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Het snuyfken sal hem vreught <rhyme label="c" type="f" corresp="#s6:l4">doen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En maecken hem 'tleven <rhyme label="b" type="m" corresp="#s6:l3">lanck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Sa vrinden laet dan <rhyme label="a" type="f">schincken</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En houdt noyt op van <rhyme label="a" type="f" corresp="#s7:l1">drincken</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Want 'tis al ons <rhyme label="b" type="m">ghemoet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Van gheenen druck te <rhyme label="c" type="f">sterven</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En noyt gheen vreucht te <rhyme label="c" type="f" corresp="#s7:l4">derven</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">suypt elck u vol en <rhyme label="b" type="m" corresp="#s7:l3">soet</rhyme>.</l>
      </lg>
    </lg>
  </text>
