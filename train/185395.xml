  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Wilt, o Christen <rhyme label="a" type="m">al</rhyme>!</l>
        <l id="s1:l2" met="3" type="+-">Verheughen en <rhyme label="b" type="f">verblyden</rhyme></l>
        <l id="s1:l3" met="3" type="+-">In dit aertsche <rhyme label="a" type="m" corresp="#s1:l1">dal</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Nu mtot desen <rhyme label="b" type="f" corresp="#s1:l2">tijden</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Want ons Godt den <rhyme label="c" type="m">vaer</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Goedigh heeft <rhyme label="d" type="f">gegeven</rhyme></l>
        <l id="s1:l7" met="3" type="+-">In dit nieuwe <rhyme label="c" type="m" corresp="#s1:l5">jaer</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Sijnen Soon <rhyme label="d" type="f" corresp="#s1:l6">verheven</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">En hem neer <rhyme label="e" type="m">ghesent</rhyme></l>
        <l id="s1:l10" met="3" type="+-">Wt des Hemels <rhyme label="e" type="m" corresp="#s1:l9">tent</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Beneden in hetb aertsche <rhyme label="f" type="m">dal</rhyme>,</l>
        <l id="s1:l12" met="3" type="+-">Om ons <rhyme label="g" type="m">goedertier</rhyme></l>
        <l id="s1:l13" met="3" type="+-">Te verlossen <rhyme label="g" type="m" corresp="#s1:l12">hier</rhyme></l>
        <l id="s1:l14" met="4" type="+-">Van ons boose sonden <rhyme label="f" type="m" corresp="#s1:l11">al</rhyme>,</l>
        <l id="s1:l15" met="3" type="+-">En tot desen <rhyme label="h" type="f">tijden</rhyme></l>
        <l id="s1:l16" met="3" type="+-">Sal hy ons <rhyme label="h" type="f" corresp="#s1:l15">bevryden</rhyme></l>
        <l id="s1:l17" met="4" type="+-">Van Sathans ghewelt seer <rhyme label="i" type="m">swaer</rhyme>,</l>
        <l id="s1:l18" met="3" type="+-">Dus wilt <rhyme label="j" type="f">verjolijsen</rhyme>,</l>
        <l id="s1:l19" met="3" type="+-">En onsen Godt <rhyme label="j" type="f" corresp="#s1:l18">prijsen</rhyme></l>
        <l id="s1:l20" met="4" type="+-">In dit Salighnieuwe <rhyme label="i" type="m" corresp="#s1:l17">jaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">De sterre Iacobs <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Is claer op <rhyme label="b" type="f">gheresen</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Christus Godes <rhyme label="a" type="m" corresp="#s2:l1">Soon</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Ons Heylant <rhyme label="b" type="f" corresp="#s2:l2">ghepresen</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Den dagh der <rhyme label="c" type="m">Saligheyt</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Die is nu <rhyme label="d" type="f">ghecomen</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Abraham toe <rhyme label="c" type="m" corresp="#s2:l5">gheseyt</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Dus verblijt ghy <rhyme label="d" type="f" corresp="#s2:l6">vromen</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Laet ons zijn <rhyme label="e" type="m">verblyt</rhyme></l>
        <l id="s2:l10" met="3" type="+-">In dees soete <rhyme label="e" type="m" corresp="#s2:l9">tijt</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">En Godt loven met <rhyme label="f" type="m">aendacht</rhyme>,</l>
        <l id="s2:l12" met="3" type="+-">Dat hy ons seer <rhyme label="g" type="m">soet</rhyme></l>
        <l id="s2:l13" met="3" type="+-">Vyt ghenade <rhyme label="g" type="m" corresp="#s2:l12">goet</rhyme></l>
        <l id="s2:l14" met="4" type="+-">Schenckt onsen heylandt met <rhyme label="f" type="m" corresp="#s2:l11">macht</rhyme>,</l>
        <l id="s2:l15" met="3" type="+-">Te Bethlehem <rhyme label="h" type="f">gheboren</rhyme></l>
        <l id="s2:l16" met="3" type="+-">In Davids stadt, <rhyme label="h" type="f" corresp="#s2:l15">vercoren</rhyme></l>
        <l id="s2:l17" met="4" type="+-">Van een reyne maeghet <rhyme label="i" type="m">klaer</rhyme>,</l>
        <l id="s2:l18" met="3" type="+-">Wilt nu vreught <rhyme label="j" type="f">bedryven</rhyme></l>
        <l id="s2:l19" met="3" type="+-">Mannen ende <rhyme label="j" type="f" corresp="#s2:l18">Wijven</rhyme></l>
        <l id="s2:l20" met="4" type="+-">In dit salich nieuwe <rhyme label="i" type="m" corresp="#s2:l17">Iaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Laet ons desne <rhyme label="a" type="m">Prins</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Van herten <rhyme label="b" type="f">aenhanghen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Dat wy na ons <rhyme label="a" type="m" corresp="#s3:l1">winsch</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Mochten syn <rhyme label="b" type="f" corresp="#s3:l2">ontfanghen</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Voor zijn lieve <rhyme label="c" type="m">Bruyt</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">En voor zijn <rhyme label="d" type="f">vriendinne</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Dat wy voor ‘t <rhyme label="c" type="m" corresp="#s3:l5">besluyt</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Hem mochten <rhyme label="d" type="f" corresp="#s3:l6">beminnen</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">En na den <rhyme label="e" type="m">lichaem</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Mochten zijn <rhyme label="e" type="m" corresp="#s3:l9">bequaem</rhyme></l>
        <l id="s3:l11" met="4" type="+-">Om te gaen in ‘t eeuwich <rhyme label="f" type="m">rijck</rhyme>,</l>
        <l id="s3:l12" met="3" type="+-">Laet ons voor het <rhyme label="g" type="m">slodt</rhyme></l>
        <l id="s3:l13" met="3" type="+-">Hierom bidden <rhyme label="g" type="m" corresp="#s3:l12">Godt</rhyme></l>
        <l id="s3:l14" met="4" type="+-">Dat hy ons het geeft <rhyme label="f" type="m" corresp="#s3:l11">gelijck</rhyme>.</l>
        <l id="s3:l15" met="3" type="+-">Noch wensch ick in ‘t <rhyme label="h" type="f">ende</rhyme></l>
        <l id="s3:l16" met="3" type="+-">Dat ons Godt wil <rhyme label="h" type="f" corresp="#s3:l15">senden</rhyme>,</l>
        <l id="s3:l17" met="4" type="+-">Sijn Heylighen Geest <rhyme label="i" type="m">eenpaer</rhyme>,</l>
        <l id="s3:l18" met="3" type="+-">Op dat wy <rhyme label="j" type="f">verblyden</rhyme>,</l>
        <l id="s3:l19" met="3" type="+-">Hier na dese <rhyme label="j" type="f" corresp="#s3:l18">tijden</rhyme>,</l>
        <l id="s3:l20" met="4" type="+-">By den Heer in ‘t nieuwe <rhyme label="i" type="m" corresp="#s3:l17">Iaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
