      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Weest verblijdt // t'allen <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s1:l2" met="3" type="+-">'s Hemels <rhyme label="b" type="f">Coninginne</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Alleluya, <rhyme label="c" type="f">alleluya</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ick u opdraegh all' mijn <rhyme label="b" type="f" corresp="#s1:l2">sinnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want ghy hebt // die 't all' <rhyme label="a" type="m">scheyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Maeght! in u ged <rhyme label="b" type="f">ragen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Alleluya // <rhyme label="c" type="f">alleluya</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Godt in u had groot <rhyme label="b" type="f" corresp="#s2:l2">behagen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Desen Heer // heeft sijn <rhyme label="a" type="m">keer</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Uyt het graf <rhyme label="b" type="f">genomen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Alleluya // <rhyme label="c" type="f">alleluya</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En is we'er op d'aerd' <rhyme label="b" type="f" corresp="#s3:l2">gekomen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Onverwacht // uyt het <rhyme label="a" type="m">gracht</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Is uw' Soon <rhyme label="b" type="f">verresen</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Alleluya // <rhyme label="c" type="f">alleluya</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">G'lijck voorseyt hy had voor <rhyme label="b" type="f" corresp="#s4:l2">desen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Weest verheught // weest <rhyme label="a" type="m">verneught</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Waerdtste Godes <rhyme label="b" type="f">Moeder</rhyme>!</l>
        <l id="s5:l3" met="4" type="-+">Alleluya // <rhyme label="c" type="f">alleluya</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Opgestaen is ons <rhyme label="b" type="f" corresp="#s5:l2">Behoeder</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Maget bidt // dat wy 't <rhyme label="a" type="m">Wit</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Van den Hemel <rhyme label="b" type="f">raecken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Alleluya // <rhyme label="c" type="f">alleluya</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En dat wy ons Godt <rhyme label="b" type="f" corresp="#s6:l2">genaecken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
