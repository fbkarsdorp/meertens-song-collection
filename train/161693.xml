    <melody>Polyphemus aan de stranden</melody>
  <author>Femme Gerbrantsz Drieduym</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Schippers die om verre <rhyme label="a" type="f">varen</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Door de <rhyme label="a" type="f" corresp="#s1:l1">baren</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Met haer Schepen rijck <rhyme label="b" type="m">gelaen</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Hebben Caert, Compas, en <rhyme label="c" type="f">Boogen</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Steets voor <rhyme label="c" type="f" corresp="#s1:l4">oogen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Om niet buyten 't spoor te <rhyme label="b" type="m" corresp="#s1:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Kan een kleyne schat dees <rhyme label="a" type="f">mannen</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Soo in <rhyme label="a" type="f" corresp="#s2:l1">spannen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wel hoe stellen wy ons <rhyme label="b" type="m">aen</rhyme>?</l>
        <l id="s2:l4" met="4" type="+-">Om des Werelts woeste <rhyme label="c" type="f">baren</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Door te <rhyme label="c" type="f" corresp="#s2:l4">varen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En nae 't Vader-landt te <rhyme label="b" type="m" corresp="#s2:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wilt voor eerst de Werelt <rhyme label="a" type="f">haten</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s3:l1">verlaten</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Schout haer ydelheyt en <rhyme label="b" type="m">vreught</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Onrechtvaerdigh goet laet <rhyme label="c" type="f">varen</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">En in 't <rhyme label="c" type="f" corresp="#s3:l4">sparen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Doet den hongerigen <rhyme label="b" type="m" corresp="#s3:l3">deught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ydelheyt en snoode <rhyme label="a" type="f">rancken</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Wilt af <rhyme label="a" type="f" corresp="#s4:l1">dancken</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Pracht en prael stoot met de <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En noch duysent snoode <rhyme label="c" type="f">sonden</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Loose <rhyme label="c" type="f" corresp="#s4:l4">vonden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Die men al verlaten <rhyme label="b" type="m" corresp="#s4:l3">moet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Godt en oock sijn Ouders <rhyme label="a" type="f">eeren</rhyme>;</l>
        <l id="s5:l2" met="2" type="+-">Oock <rhyme label="a" type="f" corresp="#s5:l1">verkeeren</rhyme></l>
        <l id="s5:l3" met="4" type="+-">By die vroom sijn van <rhyme label="b" type="m">gemoet</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Christi Dienaers vlijtigh <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s5:l4">na-spooren</rhyme></l>
        <l id="s5:l6" met="4" type="+-">'t Geen men doen en laten <rhyme label="b" type="m" corresp="#s5:l3">moet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wilt u Doop te recht <rhyme label="a" type="f">beleven</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s6:l1">begeven</rhyme></l>
        <l id="s6:l3" met="4" type="+-">U ten Heyligh <rhyme label="b" type="m">Avondtmael</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">U geloove tracht te <rhyme label="c" type="f">stercken</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Met goe <rhyme label="c" type="f" corresp="#s6:l4">wercken</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Tot ghy komt in 's Hemels <rhyme label="b" type="m" corresp="#s6:l3">zael</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Om dees krachten te <rhyme label="a" type="f">verkrijgen</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Wilt niet <rhyme label="a" type="f" corresp="#s7:l1">swijgen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Maer bidt yverigh uwen <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Dat sijn Geest in u mach <rhyme label="c" type="f">wercken</rhyme></l>
        <l id="s7:l5" met="2" type="+-">En u <rhyme label="c" type="f" corresp="#s7:l4">stercken</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Te volbrengen sijn <rhyme label="b" type="m" corresp="#s7:l3">Gebodt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Die soo voort gaet al sijn <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Sal <rhyme label="a" type="f" corresp="#s8:l1">verheven</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Worden in des Hemels <rhyme label="b" type="m">Hof</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">En met alle <rhyme label="c" type="f">Hemelingen</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Altijdt <rhyme label="c" type="f" corresp="#s8:l4">singen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Godes eer en Christi <rhyme label="b" type="m" corresp="#s8:l3">lof</rhyme>.</l>
      </lg>
    </lg>
  </text>
