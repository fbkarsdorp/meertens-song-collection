  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IUdith o soete <rhyme label="a" type="m">maeght</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die in u boesem <rhyme label="a" type="m" corresp="#s1:l1">draeght</rhyme></l>
        <l id="s1:l3" met="3" type="-+">'t Geen dat my meer <rhyme label="a" type="m" corresp="#s1:l1">behaegt</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Van al de <rhyme label="b" type="f">sinnen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Dats' 't aengenaem <rhyme label="c" type="m">gequeel</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Van uwe soete <rhyme label="c" type="m" corresp="#s1:l5">keel</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die 't grove snaer <rhyme label="c" type="m" corresp="#s1:l5">gespeel</rhyme>:</l>
        <l id="s1:l8" met="2" type="-+">Ver <rhyme label="b" type="f" corresp="#s1:l4">overwinnen</rhyme></l>
        <l id="s1:l9" met="4" type="-+">En die de Goden sou <rhyme label="d" type="f">bekoren</rhyme></l>
        <l id="s1:l10" met="4" type="-+">Om steets u soete stem te <rhyme label="d" type="f" corresp="#s1:l9">hooren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want als u blyde <rhyme label="a" type="m">geest</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Bekommert en <rhyme label="a" type="m" corresp="#s2:l1">bevreest</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Is overladen <rhyme label="a" type="m" corresp="#s2:l1">meest</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Met swaer <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Cont ghy die daetlijck <rhyme label="c" type="m">weer</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Geheel stellen ter <rhyme label="c" type="m" corresp="#s2:l5">neer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En alle herten <rhyme label="c" type="m" corresp="#s2:l5">seer</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Geheel <rhyme label="b" type="f" corresp="#s2:l4">versachten</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Als ghy maer u verwarde <rhyme label="d" type="f">sinnen</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Met u geneury wilt <rhyme label="d" type="f" corresp="#s2:l9">verwinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Daerom verwondert <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Als u gedachten <rhyme label="a" type="m" corresp="#s3:l1">zijn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ten minsten inde <rhyme label="a" type="m" corresp="#s3:l1">schijn</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Met druck <rhyme label="b" type="f">beladen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Vermids het blijckt dat <rhyme label="c" type="m">ghy</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Sijt van Naturen <rhyme label="c" type="m" corresp="#s3:l5">bly</rhyme></l>
        <l id="s3:l7" met="3" type="-+">En onlusts <rhyme label="c" type="m" corresp="#s3:l5">slaverny</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Haest komt <rhyme label="b" type="f" corresp="#s3:l4">versaden</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Ja alst u lust, want in u soet <rhyme label="d" type="f">singen</rhyme></l>
        <l id="s3:l10" met="4" type="-+">Gaet boven alle aertsche <rhyme label="d" type="f" corresp="#s3:l9">dingen</rhyme>.</l>
      </lg>
    </lg>
  </text>
