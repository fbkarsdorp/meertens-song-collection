    <melody>Das Jagen das ist ja mein Leben</melody>
    <categories>
      <category translation="amusement">vermaak</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Mag ik nu niet langer <rhyme label="a" type="f">regeeren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wel duivels dat staat in 't geheel my niet <rhyme label="b" type="m">aan</rhyme>;</l>
        <l id="s1:l3" met="2" type="-+">Ik zal het <rhyme label="c" type="f">probeeren</rhyme>;</l>
        <l id="s1:l4" met="2" type="-+">De Kinderen <rhyme label="c" type="f" corresp="#s1:l3">temteeren</rhyme>;</l>
        <l id="s1:l5" met="2" type="-+">En met dat <rhyme label="d" type="m">besluit</rhyme>:</l>
        <l id="s1:l6" met="2" type="-+">Ga ik Frankryk <rhyme label="d" type="m" corresp="#s1:l5">uit</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zo moest Bonaparte <rhyme label="a" type="f">klagen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Kyk vrienden! hy komt aan de Elba <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Al is hy <rhyme label="c" type="f">bedrogen</rhyme>;</l>
        <l id="s2:l4" met="2" type="-+">Zyn macht nu <rhyme label="c" type="f" corresp="#s2:l3">vervlogen</rhyme>;</l>
        <l id="s2:l5" met="2" type="-+">Hy wil doch in 't <rhyme label="d" type="m">klein</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Nog Keizertje <rhyme label="d" type="m" corresp="#s2:l5">zyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Daar treed de Schoolvos na <rhyme label="a" type="f">binnen</rhyme>;</l>
        <l id="s3:l2" met="4" type="-+">Beef Kinderen! beef! voor zyn dikke <rhyme label="b" type="m">Kop</rhyme>;</l>
        <l id="s3:l3" met="2" type="-+">Zyn Stoel, wilt het <rhyme label="c" type="f">weeten</rhyme>;</l>
        <l id="s3:l4" met="2" type="-+">Waar hy is <rhyme label="c" type="f" corresp="#s3:l3">gezeeten</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Dient hem tot een <rhyme label="d" type="m">Throon</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Ã´ Keizerlyk <rhyme label="d" type="m" corresp="#s3:l5">loon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Zyn Slaapmuts met roode <rhyme label="a" type="f">Randen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Van boven versierd met een <rhyme label="b" type="m">Beddekwast</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Die doet hem <rhyme label="c" type="f">trotseeren</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">By 't vorig <rhyme label="c" type="f" corresp="#s4:l3">temteeren</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Hy roept <rhyme label="d" type="m">overluid</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Myn Kroon dit <rhyme label="d" type="m" corresp="#s4:l5">beduid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wat zal zyn Japon ons <rhyme label="a" type="f">vertoonen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Wie schrikt niet? het is zyn Keizers <rhyme label="b" type="m">gewaad</rhyme>;</l>
        <l id="s5:l3" met="2" type="-+">Zyn Mantel vol <rhyme label="c" type="f">kleuren</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Die een elk deed <rhyme label="c" type="f" corresp="#s5:l3">treuren</rhyme>;</l>
        <l id="s5:l5" met="2" type="-+">Legt nu aan een <rhyme label="d" type="m">zy</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Voor een Schoolmeesters <rhyme label="d" type="m" corresp="#s5:l5">Py</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maar zyn Scepter ten vloek van de <rhyme label="a" type="f">Landen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Waar over hy voerde zyn <rhyme label="b" type="m">dwingelandy</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Heeft hy thans <rhyme label="c" type="f">verheeven</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">De Kinderen die <rhyme label="c" type="f" corresp="#s6:l3">beeven</rhyme>;</l>
        <l id="s6:l5" met="2" type="-+">Hy haalt uit zyn <rhyme label="d" type="m">zak</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Een dikhoute <rhyme label="d" type="m" corresp="#s6:l5">Plak</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Nu moet men aan 't <rhyme label="a" type="f">exerceeren</rhyme>;</l>
        <l id="s7:l2" met="4" type="-+">Of de jonge Concrits krygen deerlyk <rhyme label="b" type="m">slaag</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">De Pennen <rhyme label="c" type="f">versneden</rhyme>.</l>
        <l id="s7:l4" met="2" type="-+">Om 't beste <rhyme label="c" type="f" corresp="#s7:l3">gestreeden</rhyme>;</l>
        <l id="s7:l5" met="2" type="-+">Want een Ganse <rhyme label="d" type="m">Veer</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Dient nu voor 't <rhyme label="d" type="m" corresp="#s7:l5">Geweer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Al ziet men zyn Pennemes <rhyme label="a" type="f">blinken</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Zyn moorden is eenmaal doch <rhyme label="b" type="m">algedaan</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Och had hy zyn <rhyme label="c" type="f">leeven</rhyme>;</l>
        <l id="s8:l4" met="2" type="-+">Generaal maar <rhyme label="c" type="f" corresp="#s8:l3">gebleeven</rhyme>;</l>
        <l id="s8:l5" met="2" type="-+">Hy had tot zyn <rhyme label="d" type="m">eer</rhyme>;</l>
        <l id="s8:l6" met="2" type="-+">Noch zyn <rhyme label="d" type="m" corresp="#s8:l5">Zydgeweer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">De Landkaart van al zyn <rhyme label="a" type="f">Ryken</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Die cyffert hy nu in het klein op de <rhyme label="b" type="m">Ly</rhyme></l>
        <l id="s9:l3" met="2" type="-+">Maar 't <rhyme label="c" type="f">Multipliceeren</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">En 't <rhyme label="c" type="f" corresp="#s9:l3">Dievendeeren</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Van het Hollandsch <rhyme label="d" type="m">Geld</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Hem het meest nog <rhyme label="d" type="m" corresp="#s9:l5">kweld</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Die nu naar zyn wet niet wil <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Straft hy met geen Kogel nog met de <rhyme label="b" type="m">Galey</rhyme>;</l>
        <l id="s10:l3" met="2" type="-+">Neen Kinderen! wilt <rhyme label="c" type="f">vreezen</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Onderdanig doch <rhyme label="c" type="f" corresp="#s10:l3">weezen</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Of je krygt 'er braaf <rhyme label="d" type="m">spats</rhyme>;</l>
        <l id="s10:l6" met="2" type="-+">Met de <rhyme label="d" type="m" corresp="#s10:l5">Karrewats</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Wie wil nu zyn Kinders <rhyme label="a" type="f">besteeden</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">By Bonaparte op School in de <rhyme label="b" type="m">kost</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Hy kan ze ook <rhyme label="c" type="f">leeren</rhyme>;</l>
        <l id="s11:l4" met="2" type="-+">Van de Honger <rhyme label="c" type="f" corresp="#s11:l3">krappeeren</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Ici sa bon <rhyme label="d" type="m">coup</rhyme>,</l>
        <l id="s11:l6" met="2" type="-+">Hy geeft <rhyme label="d" type="m" corresp="#s11:l5">Fransche-Soup</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Zyn Broers zullen <rhyme label="a" type="f">adsisteeren</rhyme>;</l>
        <l id="s12:l2" met="4" type="-+">Jerome, Louis die staan al <rhyme label="b" type="m">gereed</rhyme>,</l>
        <l id="s12:l3" met="2" type="-+">Om met Fransche <rhyme label="c" type="f">termen</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">Het beste te <rhyme label="c" type="f" corresp="#s12:l3">Schermen</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Dit dient tot <rhyme label="d" type="m">besluit</rhyme>,</l>
        <l id="s12:l6" met="2" type="-+">Het School dat gaat <rhyme label="d" type="m" corresp="#s12:l5">uit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
