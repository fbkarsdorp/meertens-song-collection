  <author>Johanna de Gavre</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Sondaer waerom gaet ghy <rhyme label="a" type="f">vluchten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Perst u Ziel met duysent <rhyme label="a" type="f" corresp="#s1:l1">suchten</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Waerom wilt ghy droevigh <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Siet ghy Godt sijn Kruys niet <rhyme label="c" type="f">draghen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">T’uwer liefde sonder <rhyme label="c" type="f" corresp="#s1:l4">klaghen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Om u te helpen uyt dees <rhyme label="b" type="m" corresp="#s1:l3">pijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Viren Godt die gaet <rhyme label="a" type="f">gheladen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Overlast met sijn <rhyme label="a" type="f" corresp="#s2:l1">ghenaden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En roep alle komt tot <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die belast zijt en <rhyme label="c" type="f">beladen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ick en sal u niet <rhyme label="c" type="f" corresp="#s2:l4">versmaden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Maer k’sal u vertrooster <rhyme label="b" type="m" corresp="#s2:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Godt gaet met sijn gratie <rhyme label="a" type="f">leuren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Mensch eer ghy het moet <rhyme label="a" type="f" corresp="#s3:l1">betreuren</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Komt en koopse sonder <rhyme label="b" type="m">gelt</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Ghy hebt gelt ghenoech <rhyme label="c" type="f">ghevonden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Als ghy hebt berouw der <rhyme label="c" type="f" corresp="#s3:l4">sonden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Ey niet langher uyt en <rhyme label="b" type="m" corresp="#s3:l3">stelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vreest ghy voor t’aenschijn des <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">T’is gheenen Leeuw van Iuda <rhyme label="a" type="f" corresp="#s4:l1">meeren</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Maer een Lam vol <rhyme label="b" type="m">sachtmoedigheydt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Met een traentien tot <rhyme label="c" type="f">betuyghen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Kont ghy sijne Godtheydt <rhyme label="c" type="f" corresp="#s4:l4">buyghen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Want hy is vol <rhyme label="b" type="m" corresp="#s4:l3">medelijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Met een aensicht vol <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Sal hy sondaer u <rhyme label="a" type="f" corresp="#s5:l1">ontfanghen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Want hy uwe Ziel <rhyme label="b" type="m">bemindt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat hy lijden ende <rhyme label="c" type="f">slaghen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Heeft om uwen twil <rhyme label="c" type="f" corresp="#s5:l4">verdraghen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Soo is Godt op u <rhyme label="b" type="m" corresp="#s5:l3">ghesindt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Komt dan al met groote <rhyme label="a" type="f">hoopen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Komt tot dees Fonteyn <rhyme label="a" type="f" corresp="#s6:l1">gheloopen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Worpt u sonden groot en <rhyme label="b" type="m">cleyn</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">In de verdiensten sijnder <rhyme label="c" type="f">wonden</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Laetse daer in sijn <rhyme label="c" type="f" corresp="#s6:l4">verslonden</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Tot dat sy ghesuyvert <rhyme label="b" type="m" corresp="#s6:l3">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
