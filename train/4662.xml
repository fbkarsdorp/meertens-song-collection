  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ISt dat wy onze <rhyme label="a" type="f">zonden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Belijden met <rhyme label="b" type="m">berou</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Den Heer, die t’allen <rhyme label="a" type="f" corresp="#s1:l1">stonden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Oprecht is en <rhyme label="b" type="m" corresp="#s1:l2">getrou</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Zal z’ons vergeven! <rhyme label="c" type="m">Och</rhyme>!</l>
        <l id="s1:l6" met="3" type="-+">Hoe steld de <rhyme label="d" type="m">Kettery</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Door Satans quaed <rhyme label="c" type="m" corresp="#s1:l5">bedrogh</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Dan ’t Biechten aen d’een <rhyme label="d" type="m" corresp="#s1:l6">zy</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zy biecht haer in’t <rhyme label="a" type="f">verholen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Voor God, van woord en <rhyme label="b" type="m">werk</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Waer toe zijn dan <rhyme label="a" type="f" corresp="#s2:l1">bevolen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">De sleut’len aende <rhyme label="b" type="m" corresp="#s2:l2">Kerk</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Vervliegt dan inde <rhyme label="c" type="m">wind</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Door dit Geneefs <rhyme label="d" type="m">verstand</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Al wat gh’ ontbind, of <rhyme label="c" type="m" corresp="#s2:l5">bind</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Zal ik u doen <rhyme label="d" type="m" corresp="#s2:l6">gestand</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dits al te quae’n <rhyme label="a" type="f">exempel</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Het Euangely <rhyme label="b" type="m">word</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Te zaem met Christus <rhyme label="a" type="f" corresp="#s3:l1">Tempel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hier door te zeer <rhyme label="b" type="m" corresp="#s3:l2">verkort</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Want ’t is de wil en <rhyme label="c" type="m">wensch</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van God en Godes <rhyme label="d" type="m">zoon</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat hem een zondig <rhyme label="c" type="m" corresp="#s3:l5">mensch</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Den Priester ook <rhyme label="d" type="m" corresp="#s3:l6">vertoon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Gedenk hier toe de <rhyme label="a" type="f">plaetsen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van ’t oude <rhyme label="b" type="m">Testament</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Het welke den <rhyme label="a" type="f" corresp="#s4:l1">Melaetsen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Doorgaens tot dezen <rhyme label="b" type="m" corresp="#s4:l2">zend</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Maer inde nieuwe <rhyme label="c" type="m">wet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Noch wel tot meerder <rhyme label="d" type="m">eer</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Daer ’t Priesterdom <rhyme label="c" type="m" corresp="#s4:l5">ontsmet</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Het geestelijkke <rhyme label="d" type="m" corresp="#s4:l6">zeer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wild ghy nooch naerder <rhyme label="a" type="f">zouken</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Ghy vindt de Biecht <rhyme label="b" type="m">verbeeld</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Wel claer in Moises <rhyme label="a" type="f" corresp="#s5:l1">bouken</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Daer God den mensch <rhyme label="b" type="m" corresp="#s5:l2">beveeld</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Met onbeveinsde <rhyme label="c" type="m">mond</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Te brengen voor den <rhyme label="d" type="m">dag</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Het schennis van zijn <rhyme label="c" type="m" corresp="#s5:l5">zond</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Aen’t Priesterlijk <rhyme label="d" type="m" corresp="#s5:l6">gezag</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hoe’n zal met meerder <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Een Christen dit niet <rhyme label="b" type="m">doen</rhyme>!</l>
        <l id="s6:l3" met="3" type="-+">Nu hy volmaekter <rhyme label="a" type="f" corresp="#s6:l1">vrede</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Door ’t Priesterlijk <rhyme label="b" type="m" corresp="#s6:l2">verzoen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Van Goods genae <rhyme label="c" type="m">verwacht</rhyme>?</l>
        <l id="s6:l6" met="3" type="-+">Die, zoo ons Paulus <rhyme label="d" type="m">meld</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Heeft in zijn dienaers <rhyme label="c" type="m" corresp="#s6:l5">magt</rhyme></l>
        <l id="s6:l8" met="3" type="-+">’t Verzoenend woord <rhyme label="d" type="m" corresp="#s6:l6">gesteld</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zoo dat in d’oudste <rhyme label="a" type="f">tijden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">De eerste Christen <rhyme label="b" type="m">Kerk</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Voor Paulo kwam <rhyme label="a" type="f" corresp="#s7:l1">belijden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Te  recht haer zondig <rhyme label="b" type="m" corresp="#s7:l2">werk</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">En dat Iacobus <rhyme label="c" type="m">me’e</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Haer met zoo goe’n <rhyme label="d" type="m">bescheid</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">De zonde biechten <rhyme label="c" type="m" corresp="#s7:l5">de’e</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Aen d’oud’ <rhyme label="d" type="m" corresp="#s7:l6">eerwaerdigheid</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dat dan altijd <rhyme label="a" type="f">geprezen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Gezegent en <rhyme label="b" type="m">gelooft</rhyme></l>
        <l id="s8:l3" met="3" type="-+">De goedheyd Goods moet <rhyme label="a" type="f" corresp="#s8:l1">wezen</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Die aen ’t gebogen <rhyme label="b" type="m" corresp="#s8:l2">hoofd</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Zo mildelijk <rhyme label="c" type="m">vergeeft</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Een menigte van <rhyme label="d" type="m">zond</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">Diet oit bedreven <rhyme label="c" type="m" corresp="#s8:l5">heeft</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Door hand, of hart, of <rhyme label="d" type="m" corresp="#s8:l6">mond</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
