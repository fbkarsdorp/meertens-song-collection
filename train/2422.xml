  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EEn blomken jent, seer <rhyme label="a" type="m">excellent</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Staet in mijn hert <rhyme label="b" type="f">gheschreven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gheen man en kent, schoonder <rhyme label="a" type="m" corresp="#s1:l1">present</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Gheen liever lief <rhyme label="b" type="f" corresp="#s1:l2">verheven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gheen meerder vreucht, in dese <rhyme label="a" type="m">jeucht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dan lief by lief te <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sy zijn verheucht, in aller <rhyme label="a" type="m" corresp="#s2:l1">deucht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waer vreucht is <rhyme label="b" type="f" corresp="#s2:l2">wtghelesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och oft ick waer, een ure by <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ick soude my <rhyme label="b" type="f">vermaken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ick soude daer, claghen dats <rhyme label="a" type="m" corresp="#s3:l1">claer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Mijn droeffelicke <rhyme label="b" type="f" corresp="#s3:l2">saken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Prince ghemeen, gheen goet <rhyme label="a" type="m">certeen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sou ick voor haer <rhyme label="b" type="f">begheeren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Want sy alleen, en anders <rhyme label="a" type="m" corresp="#s4:l1">gheen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Mach my <rhyme label="b" type="f" corresp="#s4:l2">verjubileren</rhyme>.</l>
      </lg>
    </lg>
  </text>
