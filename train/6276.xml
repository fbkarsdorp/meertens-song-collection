  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hertzliber Bruder <rhyme label="a" type="m">mein</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gar auß will ich dirs <rhyme label="b" type="f">bringen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dis Gläslein mit dem <rhyme label="a" type="m" corresp="#s1:l1">Wein</rhyme>:</l>
        <l id="s1:l4" met="2" type="+-">Was? Das, das? <rhyme label="c" type="m">Ja</rhyme>,</l>
        <l id="s1:l5" met="5" type="+-">Ja, ja, ja, und das Gläselein so <rhyme label="a" type="m" corresp="#s1:l1">klein</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Das selbe rein auß seyn <rhyme label="a" type="m">soll</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Auff deiner Liebsten <rhyme label="b" type="f">Gesundtheyt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Der du so gerne <rhyme label="a" type="m" corresp="#s2:l1">soltst</rhyme>,</l>
        <l id="s2:l4" met="2" type="+-">Was? das, das, <rhyme label="c" type="m">Ja</rhyme>,</l>
        <l id="s2:l5" met="5" type="+-">Ja, ja, ja und das Gläselein so <rhyme label="a" type="m" corresp="#s2:l1">klein</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Nun setz es an dein <rhyme label="a" type="m">Mund</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Und wolst dat gar <rhyme label="b" type="f">außsauffen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Gar auß, biß an dem <rhyme label="a" type="m" corresp="#s3:l1">Grund</rhyme>.</l>
        <l id="s3:l4" met="2" type="+-">Was? Das, das? <rhyme label="c" type="m">Ja</rhyme>,</l>
        <l id="s3:l5" met="5" type="+-">Ja, ja, ja, und das Gläselein so <rhyme label="a" type="m" corresp="#s3:l1">klein</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Der sach ist recht ge <rhyme label="a" type="m">schehn</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Das vorn war wol gestand <rhyme label="b" type="f">en</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Das soll biß unten <rhyme label="a" type="m" corresp="#s4:l1">stehn</rhyme>.</l>
        <l id="s4:l4" met="2" type="+-">Was? Das, das? <rhyme label="c" type="m">Ja</rhyme>,</l>
        <l id="s4:l5" met="5" type="+-">Ja, ja, ja, und das Gläselein so <rhyme label="a" type="m" corresp="#s4:l1">klein</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">So lebt man in der <rhyme label="a" type="m">Welt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Und haben auch <rhyme label="b" type="f">bißweilen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Den Beutel ohne <rhyme label="a" type="m" corresp="#s5:l1">Gelt</rhyme>.</l>
        <l id="s5:l4" met="2" type="+-">Wer? Du. Ich? <rhyme label="c" type="m">Ja</rhyme>,</l>
        <l id="s5:l5" met="5" type="+-">Ja, ja, ja, und den Beutel ohne <rhyme label="a" type="m" corresp="#s5:l1">Gelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">So lebt man hundert <rhyme label="a" type="m">Jahr</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Und dan einmahl <rhyme label="b" type="f">gestorben</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Das schad uns nicht ein <rhyme label="a" type="m" corresp="#s6:l1">Haar</rhyme>.</l>
        <l id="s6:l4" met="2" type="+-">Wer? Du. Ich? <rhyme label="c" type="m">Ja</rhyme>,</l>
        <l id="s6:l5" met="5" type="+-">Ja, ja , ja, und das schad uns nicht ein <rhyme label="a" type="m" corresp="#s6:l1">Haar</rhyme>.</l>
      </lg>
    </lg>
  </text>
