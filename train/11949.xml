  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Wilt u niet <rhyme label="a" type="f">verblijden</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Als g' u vyant <rhyme label="b" type="m">siet</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Tot sijn straff hier <rhyme label="a" type="f" corresp="#s1:l1">lijden</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Eenigh swaer <rhyme label="b" type="m" corresp="#s1:l2">verdriet</rhyme>.</l>
        <l id="s1:l5" met="3" type="+-">U kan <rhyme label="c" type="f">overkomen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">'t Geen en meerder dan hy <rhyme label="d" type="m">lijdt</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">God u kan, nu of <rhyme label="e" type="m">dan</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Straffen, na gy waerdig <rhyme label="d" type="m" corresp="#s1:l6">zijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Denckt dat ghy <rhyme label="a" type="f">vertreden</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Dickwils hebt Gods <rhyme label="b" type="m">Wet</rhyme>;</l>
        <l id="s2:l3" met="3" type="+-">En niet op Gods <rhyme label="a" type="f" corresp="#s2:l1">reden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Vlytigh hebt <rhyme label="b" type="m" corresp="#s2:l2">ghelet</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">Is hy dan <rhyme label="c" type="f">strafwaerdigh</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Nae u oordeel sijt ghy 't <rhyme label="d" type="m">me'e</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Siet dan toe, dat Gods <rhyme label="e" type="m">Roe</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Die hem straft, u maeckt <rhyme label="d" type="m" corresp="#s2:l6">ghedwee</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Godt straft niet den <rhyme label="a" type="f">quaden</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Tot u tijt <rhyme label="b" type="m">verdrijff</rhyme>;</l>
        <l id="s3:l3" met="3" type="+-">Maer om haer te <rhyme label="a" type="f" corresp="#s3:l1">raden</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Dat sy sterck en <rhyme label="b" type="m" corresp="#s3:l2">stijff</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Door bekeeringh <rhyme label="c" type="f">loopen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Souden nae het eeuwigh <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">'t Welck hy geeft, die hier <rhyme label="e" type="m">leeft</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Vroom en heyligh van <rhyme label="d" type="m" corresp="#s3:l6">ghemoet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Godt sal somtijts <rhyme label="a" type="f">straffen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Die minst sonden <rhyme label="b" type="m">heeft</rhyme>;</l>
        <l id="s4:l3" met="3" type="+-">En dien heyl <rhyme label="a" type="f" corresp="#s4:l1">verschaffen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Die heel Godloos <rhyme label="b" type="m" corresp="#s4:l2">leeft</rhyme>:</l>
        <l id="s4:l5" met="3" type="+-">Om aen beyd' te <rhyme label="c" type="f">toonen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Sijn straff en <rhyme label="d" type="m">barmhertigheyt</rhyme>.</l>
        <l id="s4:l7" met="4" type="+-">Hout Godt aff, van u <rhyme label="e" type="m">straff</rhyme>.</l>
        <l id="s4:l8" met="4" type="+-">Port u aen tot <rhyme label="d" type="m" corresp="#s4:l6">heyligheydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Uyt sijn straff wilt <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Danckbaer sijn u <rhyme label="b" type="m">Godt</rhyme>:</l>
        <l id="s5:l3" met="3" type="+-">En u te <rhyme label="a" type="f" corresp="#s5:l1">bekeeren</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Volghens sijn <rhyme label="b" type="m" corresp="#s5:l2">ghebodt</rhyme>.</l>
        <l id="s5:l5" met="3" type="+-">Brand uws naestens Huys <rhyme label="c" type="f">aff</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Ghy u naerstigh wacht voor <rhyme label="d" type="m">brant</rhyme>.</l>
        <l id="s5:l7" met="4" type="+-">In sijn leet, mede <rhyme label="e" type="m">weet</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Te ghebruycken dit <rhyme label="d" type="m" corresp="#s5:l6">verstant</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Sy sijn niet Gods <rhyme label="a" type="f">Soonen</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">(Die wanneer de <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s6:l3" met="3" type="+-">Hem sijn straff komt <rhyme label="a" type="f" corresp="#s6:l1">toonen</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Die veracht sijn <rhyme label="b" type="m" corresp="#s6:l2">leer</rhyme>)</l>
        <l id="s6:l5" met="3" type="+-">In haer hert <rhyme label="c" type="f">opspringhen</rhyme>:</l>
        <l id="s6:l6" met="4" type="+-">Want den Satan sigh <rhyme label="d" type="m">vermaeckt</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Als den mensch nae sijn <rhyme label="e" type="m">wensch</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Met hem in Gods gramschap <rhyme label="d" type="m" corresp="#s6:l6">raeckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Godt vertoont sijn <rhyme label="a" type="f">minne</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Als hy sondaers <rhyme label="b" type="m">plaeght</rhyme>:</l>
        <l id="s7:l3" met="3" type="+-">Ghy u boose <rhyme label="a" type="f" corresp="#s7:l1">sinnen</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Soo u dat <rhyme label="b" type="m" corresp="#s7:l2">behaeght</rhyme>.</l>
        <l id="s7:l5" met="3" type="+-">Naedemael ghy bly <rhyme label="c" type="f">zijt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Als oft waer van Godt <rhyme label="d" type="m">gheschiet</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Niet tot leer, maer veel <rhyme label="e" type="m">eer</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Om te brenghen hem tot <rhyme label="d" type="m" corresp="#s7:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Komt Godt ymant <rhyme label="a" type="f">plaghen</rhyme></l>
        <l id="s8:l2" met="3" type="+-">Om sijn boose <rhyme label="b" type="m">daet</rhyme>:</l>
        <l id="s8:l3" met="3" type="+-">Laet u hert <rhyme label="a" type="f" corresp="#s8:l1">beklaghen</rhyme></l>
        <l id="s8:l4" met="3" type="+-">Sijn bedroefde <rhyme label="b" type="m" corresp="#s8:l2">staet</rhyme>.</l>
        <l id="s8:l5" met="3" type="+-">Wilt hem daer toe <rhyme label="c" type="f">porren</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Dat hy sich boetvaerdigh <rhyme label="d" type="m">toon</rhyme>.</l>
        <l id="s8:l7" met="4" type="+-">Laet u stem, oock voor <rhyme label="e" type="m">hem</rhyme></l>
        <l id="s8:l8" met="4" type="+-">Dringhen tot den hooghsten <rhyme label="d" type="m" corresp="#s8:l6">Throon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
