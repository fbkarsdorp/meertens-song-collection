  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIlt ghy, mensch, u selfs <rhyme label="a" type="f">bevrijden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van de Achterklap, waer <rhyme label="b" type="m">door</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Ghy u naesten brenght in <rhyme label="a" type="f" corresp="#s1:l1">lijden</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Geeft mijn woorden goet <rhyme label="b" type="m" corresp="#s1:l2">gehoor</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Als eenstemmigh met Gods <rhyme label="c" type="m">Wet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">U ten besten <rhyme label="c" type="m" corresp="#s1:l5">voorgheset</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Boosen haet, een van de <rhyme label="a" type="f">spruyten</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Waer uyt dit venijn <rhyme label="b" type="m">ontstaet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Uyt u hert wilt buyten <rhyme label="a" type="f" corresp="#s2:l1">sluyten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">In u ziel de liefde <rhyme label="b" type="m" corresp="#s2:l2">laet</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Woonen: want die denckt gheen <rhyme label="c" type="m">quaet</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Spreeckt oock niet dat and'ren <rhyme label="c" type="m" corresp="#s2:l5">schaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Nijt ghesprooten uyt der <rhyme label="a" type="f">Hellen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Duyvels dochter, laet doch <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Oyt u sinnen Wetten <rhyme label="a" type="f" corresp="#s3:l1">stellen</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Luystert niet nae haer <rhyme label="b" type="m" corresp="#s3:l2">ghebiet</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Staet uws naestens eere <rhyme label="c" type="m">voor</rhyme>.</l>
        <l id="s3:l6" met="4" type="+-">Valsche tongh gheeft gheen <rhyme label="c" type="m" corresp="#s3:l5">ghehoor</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Eyghenliefde wilt oock <rhyme label="a" type="f">weeren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als oock oorsaeck van die <rhyme label="b" type="m">sond</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Dat wy and'ren gaen <rhyme label="a" type="f" corresp="#s4:l1">onteeren</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Veeltijts spruyt uyt dese <rhyme label="b" type="m" corresp="#s4:l2">gront</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Datmen meent, als sijne <rhyme label="c" type="m">daelt</rhyme>;</l>
        <l id="s4:l6" met="4" type="+-">Dat ons eer te verder <rhyme label="c" type="m" corresp="#s4:l5">straelt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Quade lust om quaet te <rhyme label="a" type="f">spreecken</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">En te schenden 's naestens <rhyme label="b" type="m">naem</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Laet niet in u Boesem <rhyme label="a" type="f" corresp="#s5:l1">steecken</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">'t Is u Godt <rhyme label="b" type="m" corresp="#s5:l2">onaenghenaem</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">En recht teghen liefde <rhyme label="c" type="m">strijt</rhyme>;</l>
        <l id="s5:l6" met="4" type="+-">Die int quade niet <rhyme label="c" type="m" corresp="#s5:l5">verblijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Weest niet kloeck in 't <rhyme label="a" type="f">ondergronden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Wat u naesten hier of <rhyme label="b" type="m">daer</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Mach uytrechten. Kent u <rhyme label="a" type="f" corresp="#s6:l1">sonden</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">Maeckt u selven daer van <rhyme label="b" type="m" corresp="#s6:l2">klaer</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Dit behaeght u Godt; maer <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Dat ghy and'ren doet <rhyme label="c" type="m" corresp="#s6:l5">verdriet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Besigh sijn om uyt te <rhyme label="a" type="f">roeyen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">'t Onkruyt uyt eens anders <rhyme label="b" type="m">lant</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Doet de sonden in ons <rhyme label="a" type="f" corresp="#s7:l1">groeyen</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Doet nieusgierigheyt van <rhyme label="b" type="m" corresp="#s7:l2">kant</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Meerder als ghy wilt <rhyme label="c" type="m">vermoen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Vint ghy in u hof te <rhyme label="c" type="m" corresp="#s7:l5">doen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Uyt te sien, doet licht <rhyme label="a" type="f">vergaepen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Aen een anders dit of <rhyme label="b" type="m">dat</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">Het vergaepen baert <rhyme label="a" type="f" corresp="#s8:l1">verslapen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Om der deughden schoonen <rhyme label="b" type="m" corresp="#s8:l2">schat</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Te versaem'len; die ons <rhyme label="c" type="m">dient</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Om te wesen 's Heeren <rhyme label="c" type="m" corresp="#s8:l5">vrient</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Wilt oock sulcke menschen <rhyme label="a" type="f">mijden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Die wanneer sy 's naestens <rhyme label="b" type="m">eer</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Moghen krencken; haer <rhyme label="a" type="f" corresp="#s9:l1">verblijden</rhyme>.</l>
        <l id="s9:l4" met="4" type="+-">Met de sulcken niet <rhyme label="b" type="m" corresp="#s9:l2">verkeer</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">'t Quaet gheselschap doolen <rhyme label="c" type="m">doet</rhyme>:</l>
        <l id="s9:l6" met="4" type="+-">'t Wijse hert sich daer voor <rhyme label="c" type="m" corresp="#s9:l5">hoedt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Wilt voor al u tongh <rhyme label="a" type="f">bewaren</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Dat sy niemants faem en <rhyme label="b" type="m">schent</rhyme>;</l>
        <l id="s10:l3" met="4" type="+-">Spreeckt niet sonder recht <rhyme label="a" type="f" corresp="#s10:l1">bedaren</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Op dat niemant in <rhyme label="b" type="m" corresp="#s10:l2">elent</rhyme></l>
        <l id="s10:l5" met="4" type="+-">Kome, door u rassche <rhyme label="c" type="m">tongh</rhyme>.</l>
        <l id="s10:l6" met="4" type="+-">'t Vroome hert dat lit <rhyme label="c" type="m" corresp="#s10:l5">bedwongh</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Gout en Silver sult ghy <rhyme label="a" type="f">weghen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Waerom niet u woort? waer <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Grooter saecken sijn <rhyme label="a" type="f" corresp="#s11:l1">gheleghen</rhyme>.</l>
        <l id="s11:l4" met="4" type="+-">Ghy sult aen u deuren <rhyme label="b" type="m" corresp="#s11:l2">slaen</rhyme></l>
        <l id="s11:l5" met="4" type="+-">Vaste grendels; doet oock <rhyme label="c" type="m">dit</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Aen het goe en quade <rhyme label="c" type="m" corresp="#s11:l5">lit</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Wilt niet achten boose <rhyme label="a" type="f">woorden</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Als een yd'le wint; de <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s12:l3" met="4" type="+-">Diese spreeckt, als diese <rhyme label="a" type="f" corresp="#s12:l1">hoorden</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Met vermaeck, sijn vreucht en <rhyme label="b" type="m" corresp="#s12:l2">eer</rhyme></l>
        <l id="s12:l5" met="4" type="+-">Derven doet. In tonghs <rhyme label="c" type="m">ghewelt</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Doot en leven is <rhyme label="c" type="m" corresp="#s12:l5">ghestelt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
