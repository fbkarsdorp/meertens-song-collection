    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Iesus uyt den Tempel <rhyme label="a" type="f">treeden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Toen quamen sijne <rhyme label="b" type="m">Jongeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En spraken tot hem deese <rhyme label="a" type="f" corresp="#s1:l1">reeden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">O Meester, siet dees <rhyme label="b" type="m" corresp="#s1:l2">bouselen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aensiet eens watte groote <rhyme label="a" type="f">steenen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hoe wel den Tempel is <rhyme label="b" type="m">gebouwt</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Maer Iesus seydt daer op met <rhyme label="a" type="f" corresp="#s2:l1">eenen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Gy deese timmeringh <rhyme label="b" type="m" corresp="#s2:l2">aenschouwt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Voorwaer, ik tot u-lieden <rhyme label="a" type="f">segge</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">De dagen sullen koomen <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat niet een steen sal blijven <rhyme label="a" type="f" corresp="#s3:l1">legge</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Of op den ander blijven <rhyme label="b" type="m" corresp="#s3:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wanneer Heer Iesus was <rhyme label="a" type="f">geseeten</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Van waer men ook den Tempel <rhyme label="b" type="m">saegh</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Op d'hoogen Bergh van <rhyme label="a" type="f" corresp="#s4:l1">Oliveeten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Sijn Jongers deeden hem een <rhyme label="b" type="m" corresp="#s4:l2">vraegh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Meester, wilt ons een <rhyme label="a" type="f">bedieden</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Hier van kentbare <rhyme label="b" type="m">teykenen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En ook wanneer of sal <rhyme label="a" type="f" corresp="#s5:l1">geschieden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Uw' komst, en eeuws <rhyme label="b" type="m" corresp="#s5:l2">vervullingen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Heer Iesus tot sijn Jongers <rhyme label="a" type="f">seyde</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Siet toe, en waght u al te <rhyme label="b" type="m">saem</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Op dat u niemant en <rhyme label="a" type="f" corresp="#s6:l1">verleyde</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Veel sullen koomen in mijn <rhyme label="b" type="m" corresp="#s6:l2">Naem</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En Christus seggen haer te <rhyme label="a" type="f">weesen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En soo verleyden meenigh <rhyme label="b" type="m">man</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Daerom en wilt niet volgen <rhyme label="a" type="f" corresp="#s7:l1">deesen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En deesen tijdt die komt dight <rhyme label="b" type="m" corresp="#s7:l2">an</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Van krijgh en oorlogh sult gy <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En van geveght en <rhyme label="b" type="m">krijghs-rumoer</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dan sal der koomen tot uw' <rhyme label="a" type="f" corresp="#s8:l1">ooren</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Veel muytenati, en <rhyme label="b" type="m" corresp="#s8:l2">oproer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maer wilt u selven niet <rhyme label="a" type="f">verveeren</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Wanneer gy-lieden dit sult <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Want dat soo rasch niet sal <rhyme label="a" type="f" corresp="#s9:l1">passeeren</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Maer eerst soo moet het al <rhyme label="b" type="m" corresp="#s9:l2">geschien</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">d'Een nati tegens d'ander <rhyme label="a" type="f">nati</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Sal opstaen, ende <rhyme label="b" type="m">oorlogen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Aerdt-beevingh, met veel <rhyme label="a" type="f" corresp="#s10:l1">desolati</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Honger en <rhyme label="b" type="m" corresp="#s10:l2">pestilentien</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Veel dreygementen ende <rhyme label="a" type="f">vreesen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Sal d' Heemel d'menschen jagen <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Veel teykenen daer sullen <rhyme label="a" type="f" corresp="#s11:l1">weesen</rhyme>:</l>
        <l id="s11:l4" met="4" type="-+">Maer 't is hier mee nogh niet <rhyme label="b" type="m" corresp="#s11:l2">gedaen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">U selven wilt eerst wel slaen <rhyme label="a" type="f">gade</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Want sy u sullen <rhyme label="b" type="m">leeveren</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Vervolgen, ende ook <rhyme label="a" type="f" corresp="#s12:l1">verraden</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">In Synagogen <rhyme label="b" type="m" corresp="#s12:l2">geesselen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">In heghtingh sullen sy u <rhyme label="a" type="f">quellen</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Voor Princen en voor <rhyme label="b" type="m">Kooningen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Om mijnen Naem men u sal <rhyme label="a" type="f" corresp="#s13:l1">stellen</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Dit sullen sijn <rhyme label="b" type="m" corresp="#s13:l2">denkteekenen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Het Euangelium moet <rhyme label="a" type="f">weesen</rhyme></l>
        <l id="s14:l2" met="4" type="-+">In alle volken eerst <rhyme label="b" type="m">gepreekt</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Als men u leevert wilt niet <rhyme label="a" type="f" corresp="#s14:l1">vreesen</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Of overleggen wat gy <rhyme label="b" type="m" corresp="#s14:l2">spreekt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Ik sal u tael en wijsheyt <rhyme label="a" type="f">geeven</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Die niemant konnen sal <rhyme label="b" type="m">weer-staen</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Niet uyt u selven: maer <rhyme label="a" type="f" corresp="#s15:l1">gedreeven</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Gy sijn sult van Goodts Geest <rhyme label="b" type="m" corresp="#s15:l2">voortaen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Gy raken sult in <rhyme label="a" type="f">tribulati</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Door Vaders, Broeders, Vrienden <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">U leev'ren sal uw eygen <rhyme label="a" type="f" corresp="#s16:l1">nati</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">En sommigh brengen tot der <rhyme label="b" type="m" corresp="#s16:l2">doodt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Een Broêr sal sijn sijns Broêrs <rhyme label="a" type="f">verrader</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Een Vader brengt sijn Kindt in <rhyme label="b" type="m">noodt</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">De Kinders haren eygen <rhyme label="a" type="f" corresp="#s17:l1">Vader</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Ook sullen brengen tot der <rhyme label="b" type="m" corresp="#s17:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">En gy-lie sult van alle <rhyme label="a" type="f">nati</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Gehaet sijn, en een groot <rhyme label="b" type="m">getal</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Sal vallen in <rhyme label="a" type="f" corresp="#s18:l1">schandalisati</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Den een den ander haten <rhyme label="b" type="m" corresp="#s18:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Dan sullender veel valsch <rhyme label="a" type="f">Propheten</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Opstaen, en brengen veel tot <rhyme label="b" type="m">fout</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Terwijl de boosheyt <rhyme label="a" type="f" corresp="#s19:l1">ongemeeten</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Vergroot, soo wordt de liefde <rhyme label="b" type="m" corresp="#s19:l2">kout</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Wie tot het eynde toe <rhyme label="a" type="f">volharde</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Sal Saligh sijn; en niet een <rhyme label="b" type="m">haer</rhyme></l>
        <l id="s20:l3" met="4" type="-+">Van uwe hooft  vernielt sal <rhyme label="a" type="f" corresp="#s20:l1">warde</rhyme>;</l>
        <l id="s20:l4" met="4" type="-+">In lijdsaemheyt uw Siel <rhyme label="b" type="m" corresp="#s20:l2">bewaer</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Dit Euangely sal men <rhyme label="a" type="f">Preeken</rhyme>,</l>
        <l id="s21:l2" met="4" type="-+">Tot tuyghenis der <rhyme label="b" type="m">Heydenen</rhyme>,</l>
        <l id="s21:l3" met="4" type="-+">De heele Weerelt door tot <rhyme label="a" type="f" corresp="#s21:l1">teeken</rhyme>,</l>
        <l id="s21:l4" met="4" type="-+">Dan sal sijn de <rhyme label="b" type="m" corresp="#s21:l2">vervullingen</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">O Heer, daer is so veel te <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s22:l2" met="4" type="-+">Verleent ons togh <rhyme label="b" type="m">stantvastigheyt</rhyme>,</l>
        <l id="s22:l3" met="4" type="-+">Op dat wy koomen tot <rhyme label="a" type="f" corresp="#s22:l1">verblijden</rhyme>,</l>
        <l id="s22:l4" met="4" type="-+">Dat g' uw' belijders hebt <rhyme label="b" type="m" corresp="#s22:l2">bereyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
