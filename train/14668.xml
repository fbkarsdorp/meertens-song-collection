      <category translation="religion">godsdienst</category>
    </categories>
  <author>Pieter van Gelre</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">COmt o vertrooster <rhyme label="a" type="m">van</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mijn siele, want sy <rhyme label="a" type="m" corresp="#s1:l1">kan</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Haer aesem niet meer <rhyme label="b" type="f">halen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Voor dat ghy haer eens <rhyme label="a" type="m" corresp="#s1:l1">an</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Gheraeckt hebt, want als <rhyme label="a" type="m" corresp="#s1:l1">dan</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ghevoelt sy minne <rhyme label="b" type="f" corresp="#s1:l3">stralen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">V seven gaven <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Voor ons een <rhyme label="a" type="m" corresp="#s2:l1">medecijn</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Dus wilt toch neder <rhyme label="b" type="f">komen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ende verlicht ons <rhyme label="a" type="m" corresp="#s2:l1">pijn</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Met u God'lijcke <rhyme label="a" type="m" corresp="#s2:l1">schijn</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Op dat wy souden <rhyme label="b" type="f" corresp="#s2:l3">schromen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy die eertijdts uyt <rhyme label="a" type="m">cracht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Der liefden, hebt <rhyme label="a" type="m" corresp="#s3:l1">ghebracht</rhyme></l>
        <l id="s3:l3" met="3" type="-+">In't lichaem van <rhyme label="b" type="f">Marie</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gods soon ons hoogste <rhyme label="a" type="m" corresp="#s3:l1">macht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Die ons bedroeft <rhyme label="a" type="m" corresp="#s3:l1">ghedacht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Met sijn doodt quam <rhyme label="b" type="f" corresp="#s3:l3">verblije</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy quaemt oock <rhyme label="a" type="m">t'eenemael</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Als Godt uyt uwen <rhyme label="a" type="m" corresp="#s4:l1">sael</rhyme></l>
        <l id="s4:l3" met="3" type="-+">By't Water der <rhyme label="b" type="f">Iordane</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En thoonden met u <rhyme label="a" type="m" corresp="#s4:l1">strael</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat Iesus was de <rhyme label="a" type="m" corresp="#s4:l1">dwael</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Die af doen sou ons <rhyme label="b" type="f" corresp="#s4:l3">tranen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Nu op den Pincxster <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hebt ghy het droeve, <rhyme label="a" type="m" corresp="#s5:l1">ach</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Benomen van u <rhyme label="b" type="f">vrienden</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Want Petrus het <rhyme label="a" type="m" corresp="#s5:l1">ghewach</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Der Ioo'n niet meer <rhyme label="a" type="m" corresp="#s5:l1">ontsach</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Maer yverich Godt <rhyme label="b" type="f" corresp="#s5:l3">dienden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dus wy dan minst en <rhyme label="a" type="m">meest</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Roepen o heylich <rhyme label="a" type="m" corresp="#s6:l1">gheest</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Versterckt al onse <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat wy hier <rhyme label="a" type="m" corresp="#s6:l1">onbevreest</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Leven, en in u <rhyme label="a" type="m" corresp="#s6:l1">feest</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Blincken als <rhyme label="b" type="f" corresp="#s6:l3">Seraphinnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
