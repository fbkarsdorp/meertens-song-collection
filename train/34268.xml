      <category translation="amusement">vermaak</category>
      <category translation="cycle of life">levenscyclus</category>
    </categories>
  <author>Jan Mommaert</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">TSa Vriendekens, weest altesaem <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Terwijl wy hebben <rhyme label="a" type="m" corresp="#s1:l1">tijdt</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Dire lin, din, dire <rhyme label="b" type="m">lin</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m">bom</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Fa la, fa fa, la <rhyme label="d" type="m">fa</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m" corresp="#s1:l4">bom</rhyme>,</l>
        <l id="s1:l7" met="5" type="+-">Ick heet u met een droncxken <rhyme label="c" type="m" corresp="#s1:l4">willekom</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Zijt willekom Cosijn, zijt willekom <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die hier zijt in ’t <rhyme label="a" type="m" corresp="#s2:l1">ghetal</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Dire lin, din, dire <rhyme label="b" type="m">lin</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m">bom</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Fa la, fa fa, la <rhyme label="d" type="m">fa</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m" corresp="#s2:l4">bom</rhyme>,</l>
        <l id="s2:l7" met="5" type="+-">Drinckt al-te-samen lustigh om en <rhyme label="c" type="m" corresp="#s2:l4">d’om</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Weest vrolijck, weest vrolijck, maeckt goede <rhyme label="a" type="m">chier</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Drinckt wijn, en spaert het <rhyme label="a" type="m" corresp="#s3:l1">bier</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Dire lin, din, dire <rhyme label="b" type="m">lin</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m">bom</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Fa la, fa fa, la <rhyme label="d" type="m">fa</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m" corresp="#s3:l4">bom</rhyme>,</l>
        <l id="s3:l7" met="5" type="+-">Ey houdt u, Vrienden lustigh aen den <rhyme label="c" type="m" corresp="#s3:l4">brom</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Laet sorghen die borghen, set druck op <rhyme label="a" type="m">zy</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En alle <rhyme label="a" type="m" corresp="#s4:l1">fantasy</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Dire lin, din, dire <rhyme label="b" type="m">lin</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m">bom</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Fa la, fa fa, la <rhyme label="d" type="m">fa</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m" corresp="#s4:l4">bom</rhyme>,</l>
        <l id="s4:l7" met="5" type="+-">Wel hoe ghebuerken, hoe sit ghy soo <rhyme label="c" type="m" corresp="#s4:l4">stom</rhyme>;</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Het gelt u, van herten dees versche <rhyme label="a" type="m">sluyt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Al met een foncxken <rhyme label="a" type="m" corresp="#s5:l1">uyt</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Dire lin, din, dire <rhyme label="b" type="m">lin</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m">bom</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Fa la, fa fa, la <rhyme label="d" type="m">fa</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m" corresp="#s5:l4">bom</rhyme>,</l>
        <l id="s5:l7" met="5" type="+-">Op de ghesontheydt van den <rhyme label="c" type="m" corresp="#s5:l4">Bruydegom</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Ick hebbe dat ghelas sijn recht <rhyme label="a" type="m">ghedaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En laet’ het <rhyme label="a" type="m" corresp="#s6:l1">omme-gaen</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Dire lin, din, dire <rhyme label="b" type="m">lin</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m">bom</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Fa la, fa fa, la <rhyme label="d" type="m">fa</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m" corresp="#s6:l4">bom</rhyme>,</l>
        <l id="s6:l7" met="5" type="+-">Godt zegen’ u, en brenghet soo rond’ <rhyme label="c" type="m" corresp="#s6:l4">om</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Maer, hola! mijn Engelken, niet soo <rhyme label="a" type="m">straf</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Daer moet een soentjen <rhyme label="a" type="m" corresp="#s7:l1">af</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Dire lin, din, dire <rhyme label="b" type="m">lin</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m">bom</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Fa la, fa fa, la <rhyme label="d" type="m">fa</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m" corresp="#s7:l4">bom</rhyme>,</l>
        <l id="s7:l7" met="5" type="+-">Wel hoe smaeckt u dat kusken, soete <rhyme label="c" type="m" corresp="#s7:l4">blom</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Wilt singhen, en springhen, danst op en <rhyme label="a" type="m">ne’er</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wy komen niet licht <rhyme label="a" type="m" corresp="#s8:l1">we’er</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">Dire lin, din, dire <rhyme label="b" type="m">lin</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m">bom</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Fa la, fa fa, la <rhyme label="d" type="m">fa</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Bore lom, bom bo lo <rhyme label="c" type="m" corresp="#s8:l4">bom</rhyme>,</l>
        <l id="s8:l7" met="5" type="+-">Wie weet wanneer dat ick hier <rhyme label="c" type="m" corresp="#s8:l4">weder-kom</rhyme>’.</l>
      </lg>
    </lg>
  </text>
</song>
