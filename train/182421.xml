    <melody>Polyphemus aan de stranden</melody>
  <author>Tannetge Kornelis Blok</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Alle menschen hier <rhyme label="a" type="f">beneden</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Hebben <rhyme label="a" type="f" corresp="#s1:l1">reden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Om altijd met <rhyme label="b" type="m">dankbaerheid</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Onsen grooten God te <rhyme label="c" type="f">loven</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Die van <rhyme label="c" type="f" corresp="#s1:l4">boven</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ons bewijst zijn <rhyme label="b" type="m" corresp="#s1:l3">goedigheid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy die aen de menschen te <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Heeft <rhyme label="a" type="f" corresp="#s2:l1">gegeven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En veel goeden <rhyme label="b" type="m">menigfout</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Ia laet uyt der aerden <rhyme label="c" type="f">rijsen</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Vele <rhyme label="c" type="f" corresp="#s2:l4">spijsen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Tot des menschen <rhyme label="b" type="m" corresp="#s2:l3">onderhoud</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hierom moeten wy God <rhyme label="a" type="f">prijsen</rhyme></l>
        <l id="s3:l2" met="2" type="-+">En <rhyme label="a" type="f" corresp="#s3:l1">bewijsen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hem opregte <rhyme label="b" type="m">dankbaerheid</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En in dezen tyd zeer <rhyme label="c" type="f">schoone</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Eer <rhyme label="c" type="f" corresp="#s3:l4">betoone</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Aen des hemels <rhyme label="b" type="m" corresp="#s3:l3">Majesteyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nu den winter is <rhyme label="a" type="f">verdwenen</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">En daer <rhyme label="a" type="f" corresp="#s4:l1">henen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En dat nu den zoeten <rhyme label="b" type="m">tyd</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">In de Meytyd is voor <rhyme label="c" type="f">handen</rhyme></l>
        <l id="s4:l5" met="2" type="-+">In ons <rhyme label="c" type="f" corresp="#s4:l4">Landen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Waer door ‘t alles is <rhyme label="b" type="m" corresp="#s4:l3">verblyd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Om den lof en prys des <rhyme label="a" type="f">Heeren</rhyme>:</l>
        <l id="s5:l2" met="2" type="-+">Te <rhyme label="a" type="f" corresp="#s5:l1">vermeeren</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Is nu overvloedig <rhyme label="b" type="m">stof</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Nu de Boomen vrugten <rhyme label="c" type="f">velden</rhyme></l>
        <l id="s5:l5" met="2" type="-+">ons <rhyme label="c" type="f" corresp="#s5:l4">vermelden</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Ook de vogels Godes <rhyme label="b" type="m" corresp="#s5:l3">lof</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die men smorgens <rhyme label="a" type="f">sonderlinge</rhyme>:</l>
        <l id="s6:l2" met="2" type="-+">Vroeg hoord <rhyme label="a" type="f" corresp="#s6:l1">zinge</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Gelyk of de Beesjes <rhyme label="b" type="m">rot</rhyme></l>
        <l id="s6:l4" met="4" type="-+">De menschen vol <rhyme label="c" type="f">gebreken</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Wilden <rhyme label="c" type="f" corresp="#s6:l4">spreken</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Komt staet op en looft uw <rhyme label="b" type="m" corresp="#s6:l3">God</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Komt aenschouwt eens hoe <rhyme label="a" type="f">manierig</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">En <rhyme label="a" type="f" corresp="#s7:l1">playsierig</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dat de groene velden <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Siet hoe schoon den dag in ‘t <rhyme label="c" type="f">Oosten</rhyme>;</l>
        <l id="s7:l5" met="2" type="-+">Tot <rhyme label="c" type="f" corresp="#s7:l4">vertroosten</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Van ons al is <rhyme label="b" type="m" corresp="#s7:l3">opgegaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">En als wy dan gaen <rhyme label="a" type="f">aenmerken</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Gods <rhyme label="a" type="f" corresp="#s8:l1">werke</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Hoe den dauw gelijk een <rhyme label="b" type="m">vloet</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">over ‘t veld zig in de <rhyme label="c" type="f">Meye</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Gaet <rhyme label="c" type="f" corresp="#s8:l4">versprye</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Dan verheugt zig ons <rhyme label="b" type="m" corresp="#s8:l3">gemoed</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">En de Son is <rhyme label="a" type="f">opgekomen</rhyme></l>
        <l id="s9:l2" met="2" type="-+">door de <rhyme label="a" type="f" corresp="#s9:l1">Boomen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Is ‘t dat zy haer stralen <rhyme label="b" type="m">schiet</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Daer de vogels vreugt <rhyme label="c" type="f">vermeeren</rhyme></l>
        <l id="s9:l5" met="2" type="-+">En <rhyme label="c" type="f" corresp="#s9:l4">vereeren</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Haren Schepper een nieuw <rhyme label="b" type="m" corresp="#s9:l3">Liedt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">’t Leeuwerkje diend wel te <rhyme label="a" type="f">weten</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">Niet <rhyme label="a" type="f" corresp="#s10:l1">vergeten</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat al d’andere voore <rhyme label="b" type="m">zinkt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En dan klimt het op na <rhyme label="c" type="f">boven</rhyme>:</l>
        <l id="s10:l5" met="2" type="-+">God te <rhyme label="c" type="f" corresp="#s10:l4">loven</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Dat het door de velden <rhyme label="b" type="m" corresp="#s10:l3">klinkt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Als men hoord dees kleyne <rhyme label="a" type="f">dieren</rhyme></l>
        <l id="s11:l2" met="2" type="-+"><rhyme label="a" type="f" corresp="#s11:l1">Quinkelieren</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Met een zoete <rhyme label="b" type="m">Melodie</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Moet ons hert in dese <rhyme label="c" type="f">saken</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Niet <rhyme label="c" type="f" corresp="#s11:l4">vermaken</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Als wy dat aenhoor’ en <rhyme label="b" type="m" corresp="#s11:l3">zie</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Moet het ons dan niet <rhyme label="a" type="f">bewegen</rhyme>,</l>
        <l id="s12:l2" met="2" type="-+">Seer <rhyme label="a" type="f" corresp="#s12:l1">genegen</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">ook te wesen ons <rhyme label="b" type="m">gesank</rhyme>:</l>
        <l id="s12:l4" met="4" type="-+">En voortaen ons gantsche <rhyme label="c" type="f">leden</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Te <rhyme label="c" type="f" corresp="#s12:l4">besteden</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Tot des Heeren lof en <rhyme label="b" type="m" corresp="#s12:l3">dank</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Nu dat ons door Godes <rhyme label="a" type="f">zegen</rhyme>,</l>
        <l id="s13:l2" met="2" type="-+">Is <rhyme label="a" type="f" corresp="#s13:l1">verkregen</rhyme></l>
        <l id="s13:l3" met="4" type="-+">den geest lyken Meytyd <rhyme label="b" type="m">zoet</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Laten wy hem nu ook <rhyme label="c" type="f">prijsen</rhyme>:</l>
        <l id="s13:l5" met="2" type="-+">Eer <rhyme label="c" type="f" corresp="#s13:l4">bewysen</rhyme>:</l>
        <l id="s13:l6" met="4" type="-+">die man altijd loven <rhyme label="b" type="m" corresp="#s13:l3">moet</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
