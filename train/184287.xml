<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184287</id>
    <date>
      <year-start>1794</year-start>
      <year-end>1794</year-end>
    </date>
    <tags/>
    <melody>De wereld is in rep en roer</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Het zoeste dat op aard kan <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Is wis een glaasjen lekkre <rhyme label="a" type="m" corresp="#s1:l1">wijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat geeft verstand en <rhyme label="b" type="f">krachten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat geeft verstand en <rhyme label="b" type="f" corresp="#s1:l3">krachten</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Wat men mag schreeuwen van de <rhyme label="c" type="m">min</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ik zeg er is geen zoetheid <rhyme label="c" type="m" corresp="#s1:l5">in</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Geen zoetheid van te <rhyme label="b" type="f" corresp="#s1:l3">wachten</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Geen zoetheid van te <rhyme label="b" type="f" corresp="#s1:l3">wachten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het geld is zekerlijk iet <rhyme label="a" type="m">waard'</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Doch niet voor die 't alleen <rhyme label="a" type="m" corresp="#s2:l1">bewaard</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maar wel om wijn te <rhyme label="b" type="f">koopen</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Maar wel om wijn te <rhyme label="b" type="f" corresp="#s2:l3">koopen</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Heeft men gebrek aan lekkren <rhyme label="c" type="m">wijn</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dan kan men piet te vreden <rhyme label="c" type="m" corresp="#s2:l5">zijn</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Al had men geld bij <rhyme label="b" type="f" corresp="#s2:l3">hoopen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Al had men geld bij <rhyme label="b" type="f" corresp="#s2:l3">hoopen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een hoofd vol dampen is een <rhyme label="a" type="m">schat</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die 't waar geluk in zig <rhyme label="a" type="m" corresp="#s3:l1">bevat</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Zij maakt een' zot <rhyme label="b" type="f">verstandig</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Zij maakt een' zot <rhyme label="b" type="f" corresp="#s3:l3">verstandig</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">De wijn bezit een <rhyme label="c" type="m">toverkracht</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Hij maakt zelfs dat een brombast <rhyme label="c" type="m" corresp="#s3:l5">lacht</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hij maakt een' luiaart <rhyme label="b" type="f" corresp="#s3:l3">handig</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Hij maakt een' luiaart <rhyme label="b" type="f" corresp="#s3:l3">handig</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Het wijntjen geeft een lafaart <rhyme label="a" type="m">moed</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Zo dat hij helden dalden <rhyme label="a" type="m" corresp="#s4:l1">doet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Zijn vijand durft <rhyme label="b" type="f">bestrijden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Zijn vijand durft <rhyme label="b" type="f" corresp="#s4:l3">bestrijden</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Die een gevoel heeft supra <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Kantog door middel van den <rhyme label="c" type="m" corresp="#s4:l5">wijn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">De zwaarste pijnen <rhyme label="b" type="f" corresp="#s4:l3">lijden</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">De zwaarste pijnen <rhyme label="b" type="f" corresp="#s4:l3">lijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het zoetste dat op aard kan <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Is 't drinken van een glaasjen <rhyme label="a" type="m" corresp="#s5:l1">wijn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dar maakt ons andre <rhyme label="b" type="f">menschen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat maakt ons andre <rhyme label="b" type="f" corresp="#s5:l3">menschen</rhyme>;</l>
        <l id="s5:l5" met="4" type="-+">Het maakt een Hemel van deeze <rhyme label="c" type="m">Aard'</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Een glaasjen wijn is schatten <rhyme label="c" type="m" corresp="#s5:l5">waard</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">'T is al wat men kau <rhyme label="b" type="f" corresp="#s5:l3">wenschen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">'T is al wat men kan <rhyme label="b" type="f" corresp="#s5:l3">wenschen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
