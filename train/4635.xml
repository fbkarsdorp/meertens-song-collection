    <melody>Maagd rein eerbaar van zeden</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ZEgt, wat zijn’t voor rijcke <rhyme label="a" type="f">renten</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Die wy door de <rhyme label="a" type="f" corresp="#s1:l1">Sacramenten</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Beuren, in de Christen <rhyme label="b" type="m">Kerk</rhyme>?</l>
        <l id="s1:l4" met="4" type="+-">’t Is ’t geloof, na dat ons <rhyme label="c" type="f">zeggen</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Die ’t Geneefse les <rhyme label="c" type="f" corresp="#s1:l4">uytleggen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Maer dit is geen bundig <rhyme label="b" type="m" corresp="#s1:l3">werk</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Overmids ’t geloof moet <rhyme label="a" type="f">wezen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Voort mystery, zoomen <rhyme label="a" type="f" corresp="#s2:l1">lezen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">By Matheus en Marcus <rhyme label="b" type="m">kan</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Iae aen al den Christen <rhyme label="c" type="f">Tempel</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Blijkt by ’t openbaer <rhyme label="c" type="f" corresp="#s2:l4">exempel</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Van den Riken <rhyme label="b" type="m" corresp="#s2:l3">Moreman</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">En wie zou ’t geloof <rhyme label="a" type="f">verhopen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Kunnen, als hy dede <rhyme label="a" type="f" corresp="#s3:l1">dopen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Eenig versch geboren <rhyme label="b" type="m">kind</rhyme>?</l>
        <l id="s3:l4" met="4" type="+-">Zeker die ’t geloof <rhyme label="c" type="f">verwekken</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Hier in wilde, of zou <rhyme label="c" type="f" corresp="#s3:l4">gekken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Of most wezen mal en <rhyme label="b" type="m" corresp="#s3:l3">blind</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">’t Is dan gracij, ’t is <rhyme label="a" type="f">genade</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daer de ziel mee <rhyme label="a" type="f" corresp="#s4:l1">ingeladen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Door de Sacramenten <rhyme label="b" type="m">word</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">’t Sijn de deugden, ’t sijn de <rhyme label="c" type="f">tuchten</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">’t Sijn de gaven, ’t sijn de <rhyme label="c" type="f" corresp="#s4:l4">vruchten</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Die haer werden <rhyme label="b" type="m" corresp="#s4:l3">ingestort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wat wil Paulus dan <rhyme label="a" type="f">beduyen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Als hy van ’t geloof doed <rhyme label="a" type="f" corresp="#s5:l1">luyen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Dat het ons rechtvaerdig <rhyme label="b" type="m">maekt</rhyme>?</l>
        <l id="s5:l4" met="4" type="+-">Lieve Man! gh’en moet niet <rhyme label="c" type="f">menen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Als u yemand prijst het <rhyme label="c" type="f" corresp="#s5:l4">eene</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Dat hy daerom ’t ander <rhyme label="b" type="m" corresp="#s5:l3">laekt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dit is d’ordre vande <rhyme label="a" type="f">zaken</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Die de ziel rechtvaerdig <rhyme label="a" type="f" corresp="#s6:l1">maken</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">d’Eerst’ ist ongemete <rhyme label="b" type="m">goed</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Die ons lokt tot zijn <rhyme label="c" type="f">justicy</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Daer toe, als een <rhyme label="c" type="f" corresp="#s6:l4">disposicy</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Strekken hoop, geloof, en <rhyme label="b" type="m" corresp="#s6:l3">boet</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Waer op dat de <rhyme label="a" type="f">Sacramenten</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Werken, recht als <rhyme label="a" type="f" corresp="#s7:l1">instrumenten</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Die nochtans haer gansche <rhyme label="b" type="m">kracht</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Trekken uite diepe <rhyme label="c" type="f">wonden</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Daer in het Rançoen <rhyme label="c" type="f" corresp="#s7:l4">gevonden</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Is van ’t menschelijk <rhyme label="b" type="m" corresp="#s7:l3">geslagt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Eindtelik, naer all’ de <rhyme label="a" type="f">deze</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Volgt de gracij, die het <rhyme label="a" type="f" corresp="#s8:l1">wezen</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Vande Heiligmaking <rhyme label="b" type="m">geeft</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Daer wy, met goe rede, <rhyme label="c" type="f">boven</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Alle gaven, hem af <rhyme label="c" type="f" corresp="#s8:l4">loven</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Die een, en drievuldig <rhyme label="b" type="m" corresp="#s8:l3">leeft</rhyme>.</l>
      </lg>
    </lg>
  </text>
