  <author>Augustinus van Teylingen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Dit is een uyt-verkooren <rhyme label="a" type="m">vat</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Des H. Geests, vol <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Sy is de glorieuse <rhyme label="a" type="m" corresp="#s1:l1">stadt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van Godt den Heer der <rhyme label="b" type="f" corresp="#s1:l2">Heeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dit is een Vrou der deugden <rhyme label="a" type="m">jent</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van sterckten <rhyme label="b" type="f">uyt-ghemeten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sy heeft het hooft van ’t helsch <rhyme label="a" type="m" corresp="#s2:l1">serpent</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Verplet en heel <rhyme label="b" type="f" corresp="#s2:l2">versleten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Tot haer, o sondaers, kleyn en <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Laet ons al t’samen <rhyme label="b" type="f">vluchten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En staende voor ons borsten <rhyme label="a" type="m" corresp="#s3:l1">snoodt</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Laet ons bidden met <rhyme label="b" type="f" corresp="#s3:l2">suchten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy hebt, o onbevleckte <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Maria soet van <rhyme label="b" type="f">sinne</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Den alderhooghsten wel <rhyme label="a" type="m" corresp="#s4:l1">behaeght</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ons Vrouw, ons <rhyme label="b" type="f" corresp="#s4:l2">Koninginne</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wilt ons door u ghebeden <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Beschermen en <rhyme label="b" type="f">bevrijden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Van alle quaet, verwerft ons <rhyme label="a" type="m" corresp="#s5:l1">‘tgoet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Troost ons in druck en <rhyme label="b" type="f" corresp="#s5:l2">lijden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maect dat wy ooc deelachtig <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Der glorien daer <rhyme label="b" type="f">boven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer alle d’uyt-verkooren <rhyme label="a" type="m" corresp="#s6:l1">fijn</rhyme></l>
        <l id="s6:l4" met="3" type="-+">God dancken ende <rhyme label="b" type="f" corresp="#s6:l2">loven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O God almachtig, Prince <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Verhoort tot allen <rhyme label="b" type="f">stonden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Als Maria, in onsen <rhyme label="a" type="m" corresp="#s7:l1">noodt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">V bid voor onse <rhyme label="b" type="f" corresp="#s7:l2">sonden</rhyme>.</l>
      </lg>
    </lg>
  </text>
