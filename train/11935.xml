    <melody>Wereld met uw schijn</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">HElaas ! vol <rhyme label="a" type="m">bedrogh</rhyme></l>
        <l id="s1:l2" met="3" type="+-">En <rhyme label="b" type="f">schijn-heyligheden</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Sijn de menschen noch als in tijdt <rhyme label="a" type="m" corresp="#s1:l1">voorleden</rhyme>.</l>
        <l id="s1:l4" met="3" type="+-">Den uytterlijcken <rhyme label="b" type="f" corresp="#s1:l2">schijn</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van heyl'ghe <rhyme label="c" type="m">zeden</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Ghenoegh hem elck <rhyme label="d" type="f">laat</rhyme></l>
        <l id="s1:l7" met="3" type="-+"><rhyme label="c" type="m" corresp="#s1:l5">zijn</rhyme>.</l>
        <l id="s1:l8" met="2" type="-+">Doch t'recht <rhyme label="d" type="f" corresp="#s1:l6">betreden</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Van 't veyligh pat der <rhyme label="e" type="f">deughden</rhyme></l>
        <l id="s1:l10" met="4" type="-+">Schier yder schouwt als bo- ven <rhyme label="f" type="f">krachten</rhyme></l>
        <l id="s1:l11" met="3" type="+-">(Hoe wel het is vol <rhyme label="e" type="f" corresp="#s1:l9">vreughden</rhyme>)</l>
        <l id="s1:l12" met="4" type="-+">Seer weynigh ware deucht <rhyme label="f" type="f" corresp="#s1:l10">betrachten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Vol van eyghen <rhyme label="a" type="m">waan</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Salmen 's naastens <rhyme label="b" type="f">wercken</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Keurighlijck gae <rhyme label="a" type="m" corresp="#s2:l1">slaan</rhyme></l>
        <l id="s2:l4" met="3" type="+-">En als quaat <rhyme label="b" type="f" corresp="#s2:l2">aanmercken</rhyme></l>
        <l id="s2:l5" met="3" type="-+">en straffen, om van <rhyme label="c" type="m">sond</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Hem te <rhyme label="d" type="f">bevrijden</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Soo 't schijnt; maar in den <rhyme label="c" type="m" corresp="#s2:l5">grond</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Ist om 't <rhyme label="d" type="f" corresp="#s2:l6">belijden</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Dat wy selfs 't quade <rhyme label="e" type="f">haten</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">En beter sijn dan die wy <rhyme label="f" type="f">straffen</rhyme>.</l>
        <l id="s2:l11" met="3" type="+-">Dreef u sonds-haat ghy <rhyme label="e" type="f" corresp="#s2:l9">laten</rhyme></l>
        <l id="s2:l12" met="4" type="-+">Soud' 't gheen ghy straft, en deucht <rhyme label="f" type="f" corresp="#s2:l10">verschaffen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Van des Heeren <rhyme label="a" type="m">woort</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Weet elck een te <rhyme label="b" type="f">spreecken</rhyme>;</l>
        <l id="s3:l3" met="3" type="+-">Elck weet hoemen <rhyme label="a" type="m" corresp="#s3:l1">hoort</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Van Gods wet te <rhyme label="b" type="f" corresp="#s3:l2">preecken</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Elck is een <rhyme label="c" type="m">Predikant</rhyme>.</l>
        <l id="s3:l6" met="2" type="-+">Men schijnt <rhyme label="d" type="f">ghedreven</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Door een gantsch Heyl'ghen <rhyme label="c" type="m" corresp="#s3:l5">brant</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Om vroom te <rhyme label="d" type="f" corresp="#s3:l6">leven</rhyme>.</l>
        <l id="s3:l9" met="3" type="-+">'t Is schijn. Men pronckt daar <rhyme label="e" type="f">meden</rhyme></l>
        <l id="s3:l10" met="4" type="-+">Datmen meer weet dan and're <rhyme label="f" type="f">leden</rhyme>.</l>
        <l id="s3:l11" met="3" type="+-">Was 't niet? Men sich <rhyme label="e" type="f" corresp="#s3:l9">besteden</rhyme></l>
        <l id="s3:l12" met="4" type="-+">Soud, nae ons kund tot <rhyme label="f" type="f" corresp="#s3:l10">heyligheden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Vol <rhyme label="a" type="m">medoghentheyt</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Schijnen wy te <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s4:l3" met="3" type="+-">En <rhyme label="a" type="m" corresp="#s4:l1">gheneghentheyt</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Teghen Weeu en <rhyme label="b" type="f" corresp="#s4:l2">Wesen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Wy gheven <rhyme label="c" type="m">rijckelijck</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Aan die 't <rhyme label="d" type="f">begheeren</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Of aan die <rhyme label="c" type="m" corresp="#s4:l5">armelijck</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Haar selfs <rhyme label="d" type="f" corresp="#s4:l6">gheneeren</rhyme>.</l>
        <l id="s4:l9" met="3" type="-+">'t Is schijn. Men blaast <rhyme label="e" type="f">Trompetten</rhyme>.</l>
        <l id="s4:l10" met="4" type="-+">Wy nauw, die armen souden <rhyme label="f" type="f">stercken</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Wou niemant daar op <rhyme label="e" type="f" corresp="#s4:l9">letten</rhyme>;</l>
        <l id="s4:l12" met="4" type="-+">Of saghmen niet ons goede <rhyme label="f" type="f" corresp="#s4:l10">wercken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">All' <rhyme label="a" type="m">Hoovaardigheydt</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Schijnen wy te <rhyme label="b" type="f">haten</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">En de <rhyme label="a" type="m" corresp="#s5:l1">nedrigheyt</rhyme></l>
        <l id="s5:l4" met="3" type="+-">In 't hert plaats te <rhyme label="b" type="f" corresp="#s5:l2">laten</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Ghemaeckt sagh ick 't, soo 't <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Sigh met de <rhyme label="d" type="f">kleeden</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Hiel gantschelijck <rhyme label="c" type="m" corresp="#s5:l5">ververt</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Van d' oude <rhyme label="d" type="f" corresp="#s5:l6">zeden</rhyme>.</l>
        <l id="s5:l9" met="3" type="-+">Wy sluyten hooghmoet <rhyme label="e" type="f">buyten</rhyme></l>
        <l id="s5:l10" met="4" type="-+">Die Weereltsch is en licht om <rhyme label="f" type="f">mercken</rhyme>;</l>
        <l id="s5:l11" met="3" type="+-">Maar soecken uyt te <rhyme label="e" type="f" corresp="#s5:l9">muyten</rhyme></l>
        <l id="s5:l12" met="4" type="-+">Om Menschen loff in heyl'ghe <rhyme label="f" type="f" corresp="#s5:l10">wercken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Wy bestraffen <rhyme label="a" type="m">haar</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Die haar 's naastens <rhyme label="b" type="f">daden</rhyme></l>
        <l id="s6:l3" met="3" type="+-">Maacken <rhyme label="a" type="m" corresp="#s6:l1">open-baar</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Om hem te <rhyme label="b" type="f" corresp="#s6:l2">versmaden</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">'t Schijnt liefd ons daar toe <rhyme label="c" type="m">port</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Tot 's naastens <rhyme label="d" type="f">eere</rhyme>;</l>
        <l id="s6:l7" met="3" type="-+">Maar neen: wy doen te <rhyme label="c" type="m" corresp="#s6:l5">kort</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Selfs die ons <rhyme label="d" type="f" corresp="#s6:l6">leere</rhyme>.</l>
        <l id="s6:l9" met="3" type="-+">Wy sijn zelfs gheern <rhyme label="e" type="f">ghepreesen</rhyme>;</l>
        <l id="s6:l10" met="4" type="-+">Dit ons beweeght om niet te <rhyme label="f" type="f">lijden</rhyme>,</l>
        <l id="s6:l11" met="3" type="+-">Dat hy veracht sou <rhyme label="e" type="f" corresp="#s6:l9">wesen</rhyme>,</l>
        <l id="s6:l12" met="4" type="-+">Op dat hy voor ons eer sou <rhyme label="f" type="f" corresp="#s6:l10">strijden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Christen, wie ghy <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Laat u niet <rhyme label="b" type="f">verblinden</rhyme>.</l>
        <l id="s7:l3" met="3" type="+-">Dient Godt t'aller <rhyme label="a" type="m" corresp="#s7:l1">tijdt</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Als recht <rhyme label="b" type="f" corresp="#s7:l2">Gods-ghesinden</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Stelt in gheen schijn, maar <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s7:l6" met="2" type="-+">De Heyl'ghe <rhyme label="d" type="f">seden</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Door deucht soeckt Gods <rhyme label="c" type="m" corresp="#s7:l5">aanschijn</rhyme>;</l>
        <l id="s7:l8" met="2" type="-+">Wilt hem naa <rhyme label="d" type="f" corresp="#s7:l6">treden</rhyme>.</l>
        <l id="s7:l9" met="3" type="-+">Gheen heyligheyt wilt <rhyme label="e" type="f">achten</rhyme></l>
        <l id="s7:l10" met="4" type="-+">Een Heyl'ghen schijn, 't welck een kan <rhyme label="f" type="f">maacken</rhyme></l>
        <l id="s7:l11" met="3" type="+-">Quaet blijvende. <rhyme label="e" type="f" corresp="#s7:l9">Betrachten</rhyme></l>
        <l id="s7:l12" met="4" type="-+">Wilt ware-deucht, die Godt doet <rhyme label="f" type="f" corresp="#s7:l10">naacken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
