  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAnneer den Gulden <rhyme label="a" type="m">daegeraet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">In't Oostē smorgens vroegh <rhyme label="a" type="m" corresp="#s1:l1">opstaet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">VVat kan ons meer <rhyme label="b" type="f">behaege</rhyme>!</l>
        <l id="s1:l4" met="4" type="-+">Dan in het kricken vanden <rhyme label="b" type="f" corresp="#s1:l3">daege</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den gulden glans des Hemels <rhyme label="a" type="m">Son</rhyme></l>
        <l id="s2:l2" met="4" type="-+">De Straelen van het klaere <rhyme label="a" type="m" corresp="#s2:l1">bron</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Door 't woelen vande <rhyme label="b" type="f">blaeden</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Doet mijnen wellust heel <rhyme label="b" type="f" corresp="#s2:l3">versaeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dē dauw, die gras, en Bloemē <rhyme label="a" type="m">deckt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">VVeer opwaerts na den Hemel <rhyme label="a" type="m" corresp="#s3:l1">treckt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als kompt de Sonne <rhyme label="b" type="f">rysen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Ende haer klaerheyt ons <rhyme label="b" type="f" corresp="#s3:l3">bewysen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sien ick den Elsen Bosch dan <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Of sau ick naer het Beecxken <rhyme label="a" type="m" corresp="#s4:l1">gaen</rhyme>!</l>
        <l id="s4:l3" met="3" type="-+">Doen sagh ick door 't <rhyme label="b" type="f">verdwynen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Dat mijn schaduw van achter <rhyme label="b" type="f" corresp="#s4:l3">schynen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dat Boosken drilt oock van <rhyme label="a" type="m">geluyt</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En Coridon speelt op sijn <rhyme label="a" type="m" corresp="#s5:l1">Fluyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gingh nieuwe deuntjens <rhyme label="b" type="f">blaesen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">En liet sijn Schaepkens t'saemen <rhyme label="b" type="f" corresp="#s5:l3">graesen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gevogelt, en het <rhyme label="a" type="m">Pluym-gediert</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Met soet verheugen <rhyme label="a" type="m" corresp="#s6:l1">tireliert</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En singht met soet <rhyme label="b" type="f">vermaecken</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Dat schynt den heelen Bosch te <rhyme label="b" type="f" corresp="#s6:l3">raecken</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Het wilt gediert oock raesen <rhyme label="a" type="m">gaet</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Daer 't Beecxkens root in't waeter <rhyme label="a" type="m" corresp="#s7:l1">staet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die Telghskens vande <rhyme label="b" type="f">Linde</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Door het soet schommelē vanden <rhyme label="b" type="f" corresp="#s7:l3">winde</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ick sagh van verr' mijn <rhyme label="a" type="m">Herderin</rhyme>;</l>
        <l id="s8:l2" met="4" type="-+">Mijn Schaepen joegh ten boschwaert <rhyme label="a" type="m" corresp="#s8:l1">in</rhyme></l>
        <l id="s8:l3" met="3" type="-+">En lietse <rhyme label="b" type="f">overscheyden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En met malkanderen doen <rhyme label="b" type="f" corresp="#s8:l3">weyden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ick sey myn Lieff, mijn <rhyme label="a" type="m">Engelin</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">VVaeren wy beyden eens van <rhyme label="a" type="m" corresp="#s9:l1">sin</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Dat onse Schaepkens <rhyme label="b" type="f">quaemen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">En haer vereenighden te <rhyme label="b" type="f" corresp="#s9:l3">saemen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Soo vlocht ick eenen <rhyme label="a" type="m">Roosen-Hoet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Van Lauwerier en Bloemkens <rhyme label="a" type="m" corresp="#s10:l1">soet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die gy na u <rhyme label="b" type="f">behaeghen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Soud' tot een glori mogen <rhyme label="b" type="f" corresp="#s10:l3">draegen</rhyme>.</l>
      </lg>
    </lg>
  </text>
