  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Snode Pest voor alle <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Nimmer satte <rhyme label="b" type="m">Gierigheid</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die met duisende van <rhyme label="a" type="f" corresp="#s1:l1">smerten</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Op hoopt 's menschen levens <rhyme label="b" type="m" corresp="#s1:l2">tyd</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Al wie uwe Drift <rhyme label="c" type="f">beminnen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Scheppen nimmer vreugd of <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Wijl de Goudsugt alle <rhyme label="c" type="f" corresp="#s1:l5">sinnen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Steeds door vrees of sorg <rhyme label="d" type="m" corresp="#s1:l6">ontrust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wat kan uwe Rykdom <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dwase vrekken, die <rhyme label="b" type="m">verwoed</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Tot het eynde van uw <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Als de blinde mollen <rhyme label="b" type="m" corresp="#s2:l2">wroed</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Midden in uw goude <rhyme label="c" type="f">bergen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Die uw schraapsugt om 't <rhyme label="d" type="m">besit</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Van nog grooter schatten <rhyme label="c" type="f" corresp="#s2:l5">tergen</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Als u eenig doel en <rhyme label="d" type="m" corresp="#s2:l6">wit</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Van 't begin der koele <rhyme label="a" type="f">morgen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Tot de swart geverfde <rhyme label="b" type="m">nagt</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Stellen duysende van <rhyme label="a" type="f" corresp="#s3:l1">sorgen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Al u sinnen op de <rhyme label="b" type="m" corresp="#s3:l2">wagt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Komt u woeker u niet <rhyme label="c" type="f">wekken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Eer de Son haar kimmen <rhyme label="d" type="m">kust</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">'t Minst geritsel sal u <rhyme label="c" type="f" corresp="#s3:l5">strekken</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Tot verstoting uwer <rhyme label="d" type="m" corresp="#s3:l6">rust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maar wat baat u ydel <rhyme label="a" type="f">pogen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daar gy nimmer in u <rhyme label="b" type="m">schat</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Rust nog vreugde kunt <rhyme label="a" type="f" corresp="#s4:l1">beoogen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Schoon gy heel de Waareld <rhyme label="b" type="m" corresp="#s4:l2">had</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">En gy met u <rhyme label="c" type="f">overleiden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">So vergeefs van u <rhyme label="d" type="m">gehaat</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Moet van uwe Rykdom <rhyme label="c" type="f" corresp="#s4:l5">scheiden</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Waar in al u Heyl <rhyme label="d" type="m" corresp="#s4:l6">bestaat</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Tragt u Hert na rust en <rhyme label="a" type="f">vreugde</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Toomd u driften soo <rhyme label="b" type="m">verwoed</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Volgd het spoor der ware <rhyme label="a" type="f" corresp="#s5:l1">deugden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Die u leiden tot het <rhyme label="b" type="m" corresp="#s5:l2">goed</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Dat alleen is regt <rhyme label="c" type="f">bestendig</rhyme>:</l>
        <l id="s5:l6" met="4" type="+-">Tragt na een gerust <rhyme label="d" type="m">gemoed</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Wie dat heeft is noit <rhyme label="c" type="f" corresp="#s5:l5">elendig</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Midden in sijn <rhyme label="d" type="m" corresp="#s5:l6">tegenspoed</rhyme>.</l>
      </lg>
    </lg>
  </text>
