  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Heer regeert met <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Van d'aarde hoog <rhyme label="a" type="m" corresp="#s1:l1">geacht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die haare vreugd laat <rhyme label="b" type="f">blyken</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Zoo doen ook d'eilandts <rhyme label="b" type="f" corresp="#s1:l3">ryken</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Rontom zyn <rhyme label="c" type="m">Majesteit</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Is <rhyme label="c" type="m" corresp="#s1:l5">wolkedonkerheit</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Gerechtigheit en <rhyme label="d" type="m">recht</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Zyn aan zyn' troon <rhyme label="d" type="m" corresp="#s1:l7">gehecht</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">En tot den grondt <rhyme label="c" type="m" corresp="#s1:l5">geleidt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een vier, een blakend <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gaat voor zyn <rhyme label="a" type="m" corresp="#s2:l1">aangezicht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En steekt al zyn <rhyme label="b" type="f">bestryders</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In brandt, voor zyn <rhyme label="b" type="f" corresp="#s2:l3">belyders</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Zyn blixemvier <rhyme label="c" type="m">ontbrandt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Verlicht het gansche <rhyme label="c" type="m" corresp="#s2:l5">landt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En vliegt  de wereldt <rhyme label="d" type="m">door</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Het aardryk beeft 'er <rhyme label="d" type="m" corresp="#s2:l7">voor</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En schokt uit zynen <rhyme label="c" type="m" corresp="#s2:l5">stant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De bergen smelten <rhyme label="a" type="m">ras</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Gelyk het taaie <rhyme label="a" type="m" corresp="#s3:l1">wasch</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Voor 't aangezicht des <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dien alle volken <rhyme label="b" type="f" corresp="#s3:l3">eeren</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Voor 't aanschyn van den <rhyme label="c" type="m">Heer'</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Der aarde, naar zyn <rhyme label="c" type="m" corresp="#s3:l5">leer</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">De hemel, wyd <rhyme label="d" type="m">verbreidt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Meldt zyn <rhyme label="d" type="m" corresp="#s3:l7">gerechtigheit</rhyme>:</l>
        <l id="s3:l9" met="3" type="-+">Elk ziet zyn heil en <rhyme label="c" type="m" corresp="#s3:l5">eer'</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Beschaming zy de <rhyme label="a" type="m">loon</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van hen, die 's Heeren <rhyme label="a" type="m" corresp="#s4:l1">troon</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Door beeldendienst <rhyme label="b" type="f">onteeren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En zich tot afgoôn <rhyme label="b" type="f" corresp="#s4:l3">keeren</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Buigt u voor 's hemels <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Gy alle Goden, <rhyme label="c" type="m" corresp="#s4:l5">neêr</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Want Sion heeft <rhyme label="d" type="m">gehoort</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En is verblydt door 't <rhyme label="d" type="m" corresp="#s4:l7">woordt</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Van uw gerichte en <rhyme label="c" type="m" corresp="#s4:l5">leer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Al Judaas dochters <rhyme label="a" type="m">zyn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Verheugt, datge uwen <rhyme label="a" type="m" corresp="#s5:l1">schyn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En glans op haar laat <rhyme label="b" type="f">daalen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gelyk de <rhyme label="b" type="f" corresp="#s5:l3">zonnestraalen</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Omdat gy oordeel <rhyme label="c" type="m">velt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">O Heer, en 't recht <rhyme label="c" type="m" corresp="#s5:l5">vermeldt</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Want gy, de Hoogste, <rhyme label="d" type="m">zyt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Tot aller Goden <rhyme label="d" type="m" corresp="#s5:l7">spyt</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Met Majesteit <rhyme label="c" type="m" corresp="#s5:l5">verzelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Al 't aardryk dient u, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En meldt uw hoogheits <rhyme label="a" type="m" corresp="#s6:l1">eer</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">'t Acht u en uw <rhyme label="b" type="f">geboden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ver boven alle <rhyme label="b" type="f" corresp="#s6:l3">Goden</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Gy die in liefde <rhyme label="c" type="m">blaakt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Tot Godt, en hem <rhyme label="c" type="m" corresp="#s6:l5">genaakt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Verlaat het quaade, en <rhyme label="d" type="m">doet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Het goede, want hy <rhyme label="d" type="m" corresp="#s6:l7">hoedt</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Uw ziel, die hy <rhyme label="c" type="m" corresp="#s6:l5">bewaakt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy redt zyn <rhyme label="a" type="m">gunsteling</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Uit 's boozen handt en <rhyme label="a" type="m" corresp="#s7:l1">kling</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Het licht is voor den <rhyme label="b" type="f">vroomen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Gezaait, daar 't wordt <rhyme label="b" type="f" corresp="#s7:l3">vernoomen</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Ook is de <rhyme label="c" type="m">vrolykheit</rhyme></l>
        <l id="s7:l6" met="3" type="-+">D'oprechten <rhyme label="c" type="m" corresp="#s7:l5">toegeleit</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Verblydt u in den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Rechtvaardigen, zyne <rhyme label="d" type="m" corresp="#s7:l7">eer</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Word' steedts door u <rhyme label="c" type="m" corresp="#s7:l5">verbreidt</rhyme>.</l>
      </lg>
    </lg>
  </text>
