    <melody>Hoe zuivere reinheid God behaagt</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anthony Jansen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEs Wereldts lodder soete <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Is maer een yd'le <rhyme label="b" type="m">vreucht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Sy baerdt en queeckt maer ziel <rhyme label="a" type="m" corresp="#s1:l1">fenijn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En dood daer me de <rhyme label="b" type="m" corresp="#s1:l2">Ieucht</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Al blincktse mooy in yders <rhyme label="c" type="m">sin</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In't harte smaeckts' als <rhyme label="d" type="m">roet</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Maer Godes vrees' en Jesus <rhyme label="c" type="m" corresp="#s1:l5">minn'</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Gheeft voedtsel aen 't <rhyme label="d" type="m" corresp="#s1:l6">ghemoedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe braef en cierlijck datse <rhyme label="a" type="m">vleyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En hoese lockt en <rhyme label="b" type="m">streelt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hoe soet sy voor 'er wellust <rhyme label="a" type="m" corresp="#s2:l1">pleyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hoe aerdigh datse <rhyme label="b" type="m" corresp="#s2:l2">queelt</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">'t Is alles maer <rhyme label="c" type="m">bedrieghery</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Vermenght met <rhyme label="d" type="m">ziel-verraedt</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Maer Jesus Liefd' en soet <rhyme label="c" type="m" corresp="#s2:l5">ghevry</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Schenckt Hemels <rhyme label="d" type="m" corresp="#s2:l6">Honich-raet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat is dan 's werelts slim <rhyme label="a" type="m">gewoel</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En 't gun in heur <rhyme label="b" type="m">gheschiedt</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">'t Is maer een ysselijck <rhyme label="a" type="m" corresp="#s3:l1">krioel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Vol jammerlijck <rhyme label="b" type="m" corresp="#s3:l2">verdriet</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">En heur te spelen nae de <rhyme label="c" type="m">mondt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Is moeyelijck en <rhyme label="d" type="m">straf</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Maer Jesus Jock en soet <rhyme label="c" type="m" corresp="#s3:l5">verbondt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Drijft selver swaerniss' <rhyme label="d" type="m" corresp="#s3:l6">af</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dies pooght u vlijtich, soete <rhyme label="a" type="m">Ieucht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En strijdt met al u <rhyme label="b" type="m">macht</rhyme></l>
        <l id="s4:l3" met="4" type="-+">In d' Ooreloghe van de <rhyme label="a" type="m" corresp="#s4:l1">Deucht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Bespot des Satans <rhyme label="b" type="m" corresp="#s4:l2">kracht</rhyme>;</l>
        <l id="s4:l5" met="4" type="-+">Een Werelts dienaer krijght tot <rhyme label="c" type="m">loon</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Een eeuwigh groote <rhyme label="d" type="m">pijn</rhyme>:</l>
        <l id="s4:l7" met="4" type="-+">Maer Iesus voerts' in sijnen <rhyme label="c" type="m" corresp="#s4:l5">Throon</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Die sijne dienaers <rhyme label="d" type="m" corresp="#s4:l6">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
