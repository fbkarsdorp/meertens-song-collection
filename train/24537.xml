<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24537</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="afscheidslied" translation="farewell song">afscheidslied</tag>
      <tag standard-name="devoot lied" translation="devotional song">devoot lied</tag>
    </tags>
    <melody>Het schenkte een overschildknecht goed</melody>
    <categories>
      <category translation="occasions">gelegenheden</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ic drage in mynes herten <rhyme label="a" type="m">groet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">een steen verciert mit <rhyme label="b" type="f">straelen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">dat is heer Jhesus der maegden <rhyme label="c" type="m">lief</rhyme></l>
        <l id="s1:l4" met="3" type="-+">myns hertsen <rhyme label="b" type="f" corresp="#s1:l2">wonschelgaerden</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mer wie mit Jhesus coesen <rhyme label="a" type="m">wyl</rhyme></l>
        <l id="s2:l2" met="3" type="-+">die moet al laten <rhyme label="b" type="f">varen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">der werlde genoechte ende al oer <rhyme label="c" type="m">spyl</rhyme></l>
        <l id="s2:l4" met="3" type="-+">ende nemen syns brudegoms <rhyme label="b" type="f" corresp="#s2:l2">ware</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hi is een suete mynnen <rhyme label="a" type="m">bant</rhyme></l>
        <l id="s3:l2" met="3" type="-+">myns hertsen <rhyme label="b" type="f">wonschelgaerden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">ic willen oec ommers voer alle myne <rhyme label="c" type="m">vrende</rhyme></l>
        <l id="s3:l4" met="3" type="-+">in mynen herten <rhyme label="b" type="f" corresp="#s3:l2">dragen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Doer hem soe wil ic laten <rhyme label="a" type="m">vaeren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">oec al die werlt <rhyme label="b" type="f">gemeyne</rhyme></l>
        <l id="s4:l3" met="4" type="-+">hi doncket my alle tyt schoene <rhyme label="c" type="m">staen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">des wynters als inden <rhyme label="b" type="f" corresp="#s4:l2">meye</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nyemant en holde sich alsoe <rhyme label="a" type="m">cloeck</rhyme></l>
        <l id="s5:l2" met="3" type="-+">dat hi der werlt <rhyme label="b" type="f">betrouwe</rhyme></l>
        <l id="s5:l3" met="4" type="-+">wie hoere genoechten mit vrouden <rhyme label="c" type="m">dient</rhyme></l>
        <l id="s5:l4" met="3" type="-+">sy sal hem loenen mit <rhyme label="b" type="f" corresp="#s5:l2">rouwen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Laet se dansen laet se <rhyme label="a" type="m">spoelen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">hoer corte genoechte <rhyme label="b" type="f">dryuen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">soe wie heer Jhesus gelaten <rhyme label="c" type="m">heeft</rhyme></l>
        <l id="s6:l4" met="3" type="-+">hem en kan geen heyl <rhyme label="b" type="f" corresp="#s6:l2">beclyuen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Addev addev bedriechlicke <rhyme label="a" type="m">werlt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">ic wil nv van v <rhyme label="b" type="f">scheyden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">soe sal ic ewelicke blyde <rhyme label="c" type="m">syn</rhyme></l>
        <l id="s7:l4" met="3" type="-+">nae deser corter <rhyme label="b" type="f" corresp="#s7:l2">ellenden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ick wyl myn hertken breken <rhyme label="a" type="m">af</rhyme></l>
        <l id="s8:l2" met="3" type="-+">mit hameren ende mit <rhyme label="b" type="f">tangen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">ende senden dat Jhesum in syn conyncklicke <rhyme label="c" type="m">sael</rhyme></l>
        <l id="s8:l4" met="3" type="-+">ic hape hi salt vrendelic <rhyme label="b" type="f" corresp="#s8:l2">ontfangen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ick meyne myn lief <rhyme label="a" type="m">geuondenhaen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">ende stede vrolic <rhyme label="b" type="f">blyuen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">nv moet ic ellendich buten <rhyme label="c" type="m">staen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">wes mach ic my <rhyme label="b" type="f" corresp="#s9:l2">verblyden</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hier om en wil ic niet laten <rhyme label="a" type="m">af</rhyme></l>
        <l id="s10:l2" met="3" type="-+">ende geenre droefheit <rhyme label="b" type="f">wyken</rhyme></l>
        <l id="s10:l3" met="4" type="-+">myn lief die is van aerde <rhyme label="c" type="m">guet</rhyme></l>
        <l id="s10:l4" met="3" type="-+">hi en sal my niet <rhyme label="b" type="f" corresp="#s10:l2">beswyken</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ick sie myn lief alsoe <rhyme label="a" type="m">gedaen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">der werlt die moet ic <rhyme label="b" type="f">steruen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">ic moet myns selues te mael <rhyme label="c" type="m">wtgaen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">sal ic syn hulde <rhyme label="b" type="f" corresp="#s11:l2">verweruen</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Trybelacie is hier der mynnen <rhyme label="a" type="m">spul</rhyme></l>
        <l id="s12:l2" met="3" type="-+">daer in wil ic my <rhyme label="b" type="f">verbliden</rhyme></l>
        <l id="s12:l3" met="4" type="-+">doer hem soe wil ic dragen <rhyme label="c" type="m">last</rhyme></l>
        <l id="s12:l4" met="3" type="-+">ende hem getrouwe <rhyme label="b" type="f" corresp="#s12:l2">blyuen</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Den wech den heuet hi voer <rhyme label="a" type="m">gegaen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">den wil ic <rhyme label="b" type="f">auerliden</rhyme></l>
        <l id="s13:l3" met="4" type="-+">soe wie myn lief nauolgen <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s13:l4" met="3" type="-+">die moet volstandich <rhyme label="b" type="f" corresp="#s13:l2">blyuen</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hi is een suete mynnen <rhyme label="a" type="m">bant</rhyme></l>
        <l id="s14:l2" met="3" type="-+">myns hertsen <rhyme label="b" type="f">wonschelgaerden</rhyme></l>
        <l id="s14:l3" met="4" type="-+">ic hebben oec voer myn hoechste <rhyme label="c" type="m">lief</rhyme></l>
        <l id="s14:l4" met="3" type="-+">in mynen syn <rhyme label="b" type="f" corresp="#s14:l2">gelaeden</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Doer hem soe wil ic laten <rhyme label="a" type="m">vaeren</rhyme></l>
        <l id="s15:l2" met="3" type="-+">begeerte mennyger <rhyme label="b" type="f">leye</rhyme></l>
        <l id="s15:l3" met="4" type="-+">hi is ene rose die allewege <rhyme label="c" type="m">bloeyet</rhyme></l>
        <l id="s15:l4" met="3" type="-+">des wynters als inden <rhyme label="b" type="f" corresp="#s15:l2">meye</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
