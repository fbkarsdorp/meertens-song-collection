<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186877</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody>Hoe zoet is het daar de vriendschap woont</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Waer vind men Vaderlyker <rhyme label="a" type="m">Trouw</rhyme>:</l>
        <l id="s1:l2" met="3" type="-+">Dan die 'sLands Staet <rhyme label="b" type="m">bezielt</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Die Pylers van ons <rhyme label="a" type="m" corresp="#s1:l1">Staetgebouw</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Daer Nyd voor beeft en <rhyme label="b" type="m" corresp="#s1:l2">knielt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Elk een, wiens hart van liefde <rhyme label="c" type="m">brandt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Zing nu voor hun en 't <rhyme label="c" type="m" corresp="#s1:l5">Vaderland</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Hoezée! Hoezée! <rhyme label="d" type="m">Hoezée</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hun zorgen voor hun <rhyme label="a" type="m">Onderdaen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hun waeken voor 's Lands <rhyme label="b" type="m">eer</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Doet ons met vreugd ten stryde <rhyme label="a" type="m" corresp="#s2:l1">gaan</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En vliegen ra 't <rhyme label="b" type="m" corresp="#s2:l2">geweer</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Pun liefde wekt den <rhyme label="c" type="m">Heldenmoed</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Wy wagen willig goed en <rhyme label="c" type="m" corresp="#s2:l5">bloed</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Voor 't Land, voor 't Land, voor 't <rhyme label="d" type="m">Land</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat schoone prys word ons <rhyme label="a" type="m">beloofd</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Als onze dappre <rhyme label="b" type="m">vuist</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het Zeegebroet, dat Stoorloos <rhyme label="a" type="m" corresp="#s3:l1">rooft</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Verovert of <rhyme label="b" type="m" corresp="#s3:l2">vergruist</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Ras ziet men hoe de <rhyme label="c" type="m">Varensgast</rhyme>.</l>
        <l id="s3:l6" met="4" type="-+">Tot d'elboog in de Schyven <rhyme label="c" type="m" corresp="#s3:l5">tast</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Door buit, door buit, door <rhyme label="d" type="m">buit</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En raeken wy aen voet, of <rhyme label="a" type="m">Hand</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Verminkt of zwaer <rhyme label="b" type="m">gewond</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De Zong van 't lieve <rhyme label="a" type="m" corresp="#s4:l1">Vaderland</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Voor ons maekt ons <rhyme label="b" type="m" corresp="#s4:l2">gezond</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Daer onze Staet, zoo lang men <rhyme label="c" type="m">leeft</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Tot onderhoud braef schyven <rhyme label="c" type="m" corresp="#s4:l5">geeft</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Tot loon, tot loon, tot <rhyme label="d" type="m">loon</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer liefde voor de vryen <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Zet ons meer aan dan 't <rhyme label="b" type="m">geld</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Elk onzer vloekt den Britschen <rhyme label="a" type="m" corresp="#s5:l1">haet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Elk vloekt hun snood <rhyme label="b" type="m" corresp="#s5:l2">geweld</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Komt Cameraets ik moet 'er <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Laet ons hem blind en kreupel <rhyme label="c" type="m" corresp="#s5:l5">slaen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Voor 't Land, voor 't Land, voor 't <rhyme label="d" type="m">Land</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
