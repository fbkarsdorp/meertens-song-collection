    <melody>Laatstmaal ging ik spanseren</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Maer dit sijn nieuwe <rhyme label="a" type="f">kuiren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Geesten, die ‘k <rhyme label="b" type="m">bevin</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Te duyden de <rhyme label="a" type="f" corresp="#s1:l1">Schriftuiren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Tot een verdraiden <rhyme label="b" type="m" corresp="#s1:l2">zin</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Bewogen <rhyme label="c" type="m">deur</rhyme></l>
        <l id="s1:l6" met="2" type="-+">De <rhyme label="c" type="m" corresp="#s1:l5">willekeur</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Van wellust en <rhyme label="b" type="m" corresp="#s1:l2">ghewin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zy gronden haer <rhyme label="a" type="f">jnventy</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Op Paulum, diemen <rhyme label="b" type="m">ziet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Dat de <rhyme label="a" type="f" corresp="#s2:l1">concupiscenty</rhyme></l>
        <l id="s2:l4" met="3" type="-+">By wijlen zonden <rhyme label="b" type="m" corresp="#s2:l2">hiet</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Maer dit <rhyme label="c" type="m">bescheyd</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Is <rhyme label="c" type="m" corresp="#s2:l5">ydelheyd</rhyme></l>
        <l id="s2:l7" met="3" type="-+">En hebbenz’ anders <rhyme label="b" type="m" corresp="#s2:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Want zalt al zonde <rhyme label="a" type="f">wezen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat Paulus zonde <rhyme label="b" type="m">speldt</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Moet Christus, die wy <rhyme label="a" type="f" corresp="#s3:l1">lezen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Aen’t Cruys, voor ons <rhyme label="b" type="m" corresp="#s3:l2">gesteld</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Te sijn een <rhyme label="c" type="m">zond</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Nae deze <rhyme label="c" type="m" corresp="#s3:l5">vond</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Voor zond ook sijn <rhyme label="b" type="m" corresp="#s3:l2">geteld</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ziet toe dan, plompe <rhyme label="a" type="f">Ketter</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Dat ghy wel deylt en <rhyme label="b" type="m">schift</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Eer dat de naekte <rhyme label="a" type="f" corresp="#s4:l1">letter</rhyme></l>
        <l id="s4:l4" met="3" type="-+">U doode vande <rhyme label="b" type="m" corresp="#s4:l2">Schrift</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Schikt dat g’haer <rhyme label="c" type="m">leest</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Nae Godes <rhyme label="c" type="m" corresp="#s4:l5">geest</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En niet nae eigen <rhyme label="b" type="m" corresp="#s4:l2">drift</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">’t Begeren is geen <rhyme label="a" type="f">zonde</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Zoo lang daer geen <rhyme label="b" type="m">consent</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Van wil en werd <rhyme label="a" type="f" corresp="#s5:l1">gevonden</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">De ziel blijft <rhyme label="b" type="m" corresp="#s5:l2">ongeschend</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Hoe zeer ook ’t <rhyme label="c" type="m">vleesch</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Door lust, of <rhyme label="c" type="m" corresp="#s5:l5">vrees</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Haer prikk’len drait en <rhyme label="b" type="m" corresp="#s5:l2">wendt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Want in’t herboren <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En is in’t minste <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Verdommelijks <rhyme label="a" type="f" corresp="#s6:l1">gebleven</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Zoo God ons weten <rhyme label="b" type="m" corresp="#s6:l2">liet</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Door ’t vast <rhyme label="c" type="m">oorkond</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Van Paulus <rhyme label="c" type="m" corresp="#s6:l5">mond</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Zulks men noch huyden <rhyme label="b" type="m" corresp="#s6:l2">ziet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy heeft dan het <rhyme label="a" type="f">begeren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Figuirlijk maer <rhyme label="b" type="m">genomt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Een zonde, om te <rhyme label="a" type="f" corresp="#s7:l1">leren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Dat zy uit zonden <rhyme label="b" type="m" corresp="#s7:l2">komt</rhyme>:</l>
        <l id="s7:l5" met="2" type="-+">Tot zonde <rhyme label="c" type="m">neygt</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Met zonde <rhyme label="c" type="m" corresp="#s7:l5">dreygt</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">En blijft hier mee <rhyme label="b" type="m" corresp="#s7:l2">gestomt</rhyme>.</l>
      </lg>
    </lg>
  </text>
