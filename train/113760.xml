    <melody>Hoe ligt gij hier zo koud</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author>Guilielmus Bolognino</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt nieuw schoon sterre <rhyme label="a" type="m">is</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Verschenen op ons <rhyme label="b" type="f">palen</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Die Son en Maen <rhyme label="a" type="m" corresp="#s1:l1">ghewis</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Verwint met gulde <rhyme label="b" type="f" corresp="#s1:l2">stralen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soo vremt van loop en <rhyme label="c" type="m">aert</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Soo neder oock <rhyme label="d" type="f">gheleghen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wat is 't dats' ons <rhyme label="c" type="m" corresp="#s1:l5">verclaert</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Door haren glansch en <rhyme label="d" type="f" corresp="#s1:l6">weghen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sou dit de sterr' wel <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van Balam <rhyme label="b" type="f">aenghewesen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Van onghewoonen <rhyme label="a" type="m" corresp="#s2:l1">schijn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Uyt Jacob <rhyme label="b" type="f" corresp="#s2:l2">opgheresen</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Waer word' ons dit <rhyme label="c" type="m">beduyt</rhyme>?</l>
        <l id="s2:l6" met="3" type="-+">In wat ghewest oft <rhyme label="d" type="f">scholen</rhyme>?</l>
        <l id="s2:l7" met="3" type="-+">Een saeck daer w' in zijn <rhyme label="c" type="m" corresp="#s2:l5">uyt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Soo duyster, soo <rhyme label="d" type="f" corresp="#s2:l6">verholen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O Schepper van dit <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Comt op ons herten <rhyme label="b" type="f">dalen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Verlicht doch ons <rhyme label="a" type="m" corresp="#s3:l1">ghesicht</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met uwe graties <rhyme label="b" type="f" corresp="#s3:l2">stralen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat wy doch eens <rhyme label="c" type="m">verstaen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Wat gh' ons daer door wilt <rhyme label="d" type="f">leeren</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">W' en weten niet waer <rhyme label="c" type="m" corresp="#s3:l5">gaen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Oft waer ons henen <rhyme label="d" type="f" corresp="#s3:l6">keeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ah 'tis een hemelsch <rhyme label="a" type="m">kindt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">In 't Jotse landt <rhyme label="b" type="f">gheboren</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat tot Verlosser <rhyme label="a" type="m" corresp="#s4:l1">dient</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Den mensch, door sond' <rhyme label="b" type="f" corresp="#s4:l2">verloren</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Een kindt, Godt ende <rhyme label="c" type="m">mensch</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Den Coninck van de <rhyme label="d" type="f">Joden</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Verwacht naer langh <rhyme label="c" type="m" corresp="#s4:l5">ghewensch</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Voorseyt van 'sHeeren <rhyme label="d" type="f" corresp="#s4:l6">boden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wel aen dan, laet ons <rhyme label="a" type="m">saen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Nae Israel ons <rhyme label="b" type="f">spoeden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Laet ons gaen bidden <rhyme label="a" type="m" corresp="#s5:l1">aen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Den afgront aller <rhyme label="b" type="f" corresp="#s5:l2">goeden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Vereeren menich <rhyme label="c" type="m">fout</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Den grooten Heer der <rhyme label="d" type="f">heeren</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Met wieroock, mirrh' en <rhyme label="c" type="m" corresp="#s5:l5">goudt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Den wegh sal hy ons <rhyme label="d" type="f" corresp="#s5:l6">leeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer siet de sterr' gaet <rhyme label="a" type="m">veur</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Waer is 't dat wy naer <rhyme label="b" type="f">beyden</rhyme>?</l>
        <l id="s6:l3" met="3" type="-+">Daer ons dit kindtjen <rhyme label="a" type="m" corresp="#s6:l1">deur</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ghewis tot hem sal <rhyme label="b" type="f" corresp="#s6:l2">leyden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">O vreucht! o groot <rhyme label="c" type="m">gheluck</rhyme>!</l>
        <l id="s6:l6" met="3" type="-+">O wonder Godts <rhyme label="d" type="f">weldaden</rhyme>!</l>
        <l id="s6:l7" met="3" type="-+">In blijschap die den <rhyme label="c" type="m" corresp="#s6:l5">druck</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Verkeert door sijn <rhyme label="d" type="f" corresp="#s6:l6">ghenaden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wy volghen u <rhyme label="a" type="m">gheley</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Wy gaen in alle <rhyme label="b" type="f">hoecken</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Heer, sonder langh <rhyme label="a" type="m" corresp="#s7:l1">verbey</rhyme></l>
        <l id="s7:l4" met="3" type="-+">In 't Jotse landt u <rhyme label="b" type="f" corresp="#s7:l2">soecken</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Ons van ghevaer <rhyme label="c" type="m">bewaert</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">O Schepper <rhyme label="d" type="f">onghemeten</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Daer gh' u aen gh' <rhyme label="c" type="m" corresp="#s7:l5">openbaert</rhyme></l>
        <l id="s7:l8" met="3" type="-+">U comst hebt laten <rhyme label="d" type="f" corresp="#s7:l6">weten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Gheeft dat wy met <rhyme label="a" type="m">jolijt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">U sien met u reyn <rhyme label="b" type="f">Moeder</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die u, diet all' <rhyme label="a" type="m" corresp="#s8:l1">verblijt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ghebaert heeft onsen <rhyme label="b" type="f" corresp="#s8:l2">broeder</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Daer sullen w' <rhyme label="c" type="m">openbaer</rhyme></l>
        <l id="s8:l6" met="3" type="-+">U loven met bly <rhyme label="d" type="f">stemmen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Ons herten dan te <rhyme label="c" type="m" corresp="#s8:l5">gaer</rhyme></l>
        <l id="s8:l8" met="3" type="-+">In vreuchden sullen <rhyme label="d" type="f" corresp="#s8:l6">swemmen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
