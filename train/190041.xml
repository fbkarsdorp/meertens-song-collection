    <tags/>
    <melody>Hoe lig ik hier in deze ellende</melody>
  <author>Roelant de Kater</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Aanhoord dog Vrienden <rhyme label="a" type="f">allegaaren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Iong en Oud, Arm of <rhyme label="b" type="m">Rijk</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wat ik u hier zal gaan <rhyme label="a" type="f" corresp="#s1:l1">verclaren</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van eenen Brand <rhyme label="b" type="m" corresp="#s1:l2">afgrijsselijk</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dewelke men heeft zien <rhyme label="c" type="f">gebeuren</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">In de Rijp het is te <rhyme label="c" type="f" corresp="#s1:l5">betreuren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want doen wy Zestien-honderd <rhyme label="a" type="f">schreven</rhyme></l>
        <l id="s2:l2" met="4" type="-+">In ‘t Iaar Vier-en-vijftig <rhyme label="b" type="m">bekend</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Na den zesten Dag van ‘t Iaar <rhyme label="a" type="f" corresp="#s2:l1">even</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">‘s Nagts te half Twaalven <rhyme label="b" type="m" corresp="#s2:l2">ontrent</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Doen heeft men Godts hand <rhyme label="c" type="f">vernomen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Want daar is eenen Brand <rhyme label="c" type="f" corresp="#s2:l5">gekomen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die schrikkelijk was in ‘t <rhyme label="a" type="f">aanschouwen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Op ‘t Veld gelijk als een <rhyme label="b" type="m">Tempeest</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Een Hennip-molen raakt in ‘t <rhyme label="a" type="f" corresp="#s3:l1">benouwen</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">En die was haast in Koolen <rhyme label="b" type="m" corresp="#s3:l2">meest</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Doen mogt men zien (ik zal niet <rhyme label="c" type="f">liegen</rhyme>)</l>
        <l id="s3:l6" met="4" type="-+">De Vonken over ‘t geheel Dorp <rhyme label="c" type="f" corresp="#s3:l5">vliegen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Wind woey Westlijk tot dees <rhyme label="a" type="f">stonde</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Zo dat men de Vonken wijd en <rhyme label="b" type="m">breed</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">In veel Daken doen heeft <rhyme label="a" type="f" corresp="#s4:l1">gevonden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Zo dat den Brand schrikk’lijk <rhyme label="b" type="m" corresp="#s4:l2">verspreed</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En veele Volk terstond die <rhyme label="c" type="f">zogten</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">Of zy haar Goed verbergen <rhyme label="c" type="f" corresp="#s4:l5">mogten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maar ziet te weynig help om <rhyme label="a" type="f">t’uyten</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dees Brand, zo nam zy <rhyme label="b" type="m">d’overhand</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daar kwam wel veel Volks van <rhyme label="a" type="f" corresp="#s5:l1">buyten</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Maar te weynig tegen Godts <rhyme label="b" type="m" corresp="#s5:l2">hand</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Want Menschen-hulp en kan niet <rhyme label="c" type="f">helpen</rhyme>:</l>
        <l id="s5:l6" met="4" type="-+">Als Godt zijn toorn niet wil <rhyme label="c" type="f" corresp="#s5:l5">stelpen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doen zag men dezen Brand nog <rhyme label="a" type="f">duuren</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Wel zeven of agt uuren, <rhyme label="b" type="m">ach</rhyme>!</l>
        <l id="s6:l3" met="4" type="-+">Zo dat ‘s Morgens, ‘t is te <rhyme label="a" type="f" corresp="#s6:l1">betreuren</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Het meeste Dorp in d’Assche <rhyme label="b" type="m" corresp="#s6:l2">lag</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Een groote armoed’ wasser <rhyme label="c" type="f">gebooren</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Door dien dat daar doen veel <rhyme label="c" type="f" corresp="#s6:l5">verlooren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Haar Huys, Huysraad, Silver en <rhyme label="a" type="f">Goude</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Kleed’ren, Spijze, Turf, ende <rhyme label="b" type="m">Hout</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Op de Straten zag men Ionk en <rhyme label="a" type="f" corresp="#s7:l1">Oude</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Zugten en kermen <rhyme label="b" type="m" corresp="#s7:l2">menigfout</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Hong’rig en dorstig zag men <rhyme label="c" type="f">beven</rhyme>:</l>
        <l id="s7:l6" met="4" type="-+">Manne, Vrouwen, en Kinders <rhyme label="c" type="f" corresp="#s7:l5">even</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die door den Brand waaren <rhyme label="a" type="f">bedorven</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En nu niet en wisten waar <rhyme label="b" type="m">heen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Zag men daar langs de Straten <rhyme label="a" type="f" corresp="#s8:l1">zworven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Tot Godt riepen zy met <rhyme label="b" type="m" corresp="#s8:l2">geween</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Dat hy hen dog wilde <rhyme label="c" type="f">ontfermen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">En ook weer over haar <rhyme label="c" type="f" corresp="#s8:l5">erbermen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maar door een Christelijk <rhyme label="a" type="f">medoogen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Wierden veel vroome Herten <rhyme label="b" type="m">daar</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Tot goed’ misdadigheyd <rhyme label="a" type="f" corresp="#s9:l1">bewoogen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Over dees arm Gemeente <rhyme label="b" type="m" corresp="#s9:l2">voorwaar</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Ia hebben ook na haar <rhyme label="c" type="f">behagen</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Haar veel Armen <rhyme label="c" type="f" corresp="#s9:l5">ontslagen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Daar voor zy ook aan zulke <rhyme label="a" type="f">Menschen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Dankbaar zijn met Hert en <rhyme label="b" type="m">gemoed</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Voorspoed en zegen wy haar <rhyme label="a" type="f" corresp="#s10:l1">wenschen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En dat den Heer in <rhyme label="b" type="m" corresp="#s10:l2">overvloed</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Aan dees vroome Herten <rhyme label="c" type="f">eerbaare</rhyme>:</l>
        <l id="s10:l6" met="4" type="-+">Loonen wil, hier ende hier <rhyme label="c" type="f" corresp="#s10:l5">naare</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Maar ziet och latie, <rhyme label="a" type="f">andermale</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Is haar droefheyd en groote <rhyme label="b" type="m">nood</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Haar armoed’ en haar <rhyme label="a" type="f" corresp="#s11:l1">kwale</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Weer door een zwaren Brand <rhyme label="b" type="m" corresp="#s11:l2">vergroot</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Want vijftig Huyzen raakten <rhyme label="c" type="f">weder</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Op Sint Martens Nagt ter <rhyme label="c" type="f" corresp="#s11:l5">neder</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Oorlof Vrienden nu al te <rhyme label="a" type="f">male</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En wild Godts hand bespotten <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Maar spiegeld u aan deze <rhyme label="a" type="f" corresp="#s12:l1">kwale</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Die aan de Rijppers is <rhyme label="b" type="m" corresp="#s12:l2">geschied</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">En merkt hoe dat Godt den <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Rijkdom in Armoed kan <rhyme label="c" type="f" corresp="#s12:l5">verkeere</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
