  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IK lag zieltogend na myn <rhyme label="a" type="f">leeven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">De leeden <rhyme label="b" type="m">uitgespreid</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Om zo den geest te <rhyme label="a" type="f" corresp="#s1:l1">geeven</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van genooten <rhyme label="b" type="m" corresp="#s1:l2">genoegelykheid</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Als kloris met haar mond my <rhyme label="c" type="f">raakte</rhyme></l>
        <l id="s1:l6" met="5" type="+-">En my wederom levend <rhyme label="c" type="f" corresp="#s1:l5">maakte</rhyme>:</l>
        <l id="s1:l7" met="3" type="+-">En my <rhyme label="d" type="m">wederom</rhyme>,</l>
        <l id="s1:l8" met="5" type="+-">En my wederom levend <rhyme label="c" type="f" corresp="#s1:l5">maakte</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ik zag den Ouden Baas al <rhyme label="a" type="f">roeyen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met zyn gelapte <rhyme label="b" type="m">boot</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Om met my weg te <rhyme label="a" type="f" corresp="#s2:l1">spoeyen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Binnen d'yz're sluizen der <rhyme label="b" type="m" corresp="#s2:l2">dood</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Als Kloris met haar mond my <rhyme label="c" type="f">raakte</rhyme>:</l>
        <l id="s2:l6" met="5" type="+-">En my wederom levend <rhyme label="c" type="f" corresp="#s2:l5">maakte</rhyme>:</l>
        <l id="s2:l7" met="3" type="+-">En my <rhyme label="d" type="m">wederom</rhyme>,</l>
        <l id="s2:l8" met="5" type="+-">En my wederom levend <rhyme label="c" type="f" corresp="#s2:l5">maakte</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De woede zag ik uit zyn <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daar hy vergeefs my <rhyme label="b" type="m">wagt</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">En, door myn Lief <rhyme label="a" type="f" corresp="#s3:l1">bedroogen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Weer te rug moest zonder <rhyme label="b" type="m" corresp="#s3:l2">vragt</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Want Kloris met haar mond my <rhyme label="c" type="f">raakte</rhyme></l>
        <l id="s3:l6" met="5" type="+-">En my wederom levend <rhyme label="c" type="f" corresp="#s3:l5">maakte</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">En my <rhyme label="d" type="m">wederom</rhyme>,</l>
        <l id="s3:l8" met="5" type="+-">En my wederom levend <rhyme label="c" type="f" corresp="#s3:l5">maakte</rhyme>.</l>
      </lg>
    </lg>
  </text>
