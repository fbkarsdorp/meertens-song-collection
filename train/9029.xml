  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NV hooret toe met goeden <rhyme label="a" type="m">Vlijt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hoe Lijff end Siel te samen <rhyme label="a" type="m" corresp="#s1:l1">strijdt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Al hier op Aerd' in deser <rhyme label="a" type="m" corresp="#s1:l1">Tijdt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hebben sy een staedich <rhyme label="b" type="f">kijven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Al moetens' tsamen <rhyme label="b" type="f" corresp="#s1:l4">blijven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die Lichaem seyt: Ick ben <rhyme label="a" type="m">gesont</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En heb noch veel der goeden <rhyme label="a" type="m" corresp="#s2:l1">Stond'</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Eer van my treurich Ouder <rhyme label="a" type="m" corresp="#s2:l1">coemt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wil ick in Vreuchde <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Tot Wellust my <rhyme label="b" type="f" corresp="#s2:l4">begheven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De Ziele seyt: Dat Raed' ick <rhyme label="a" type="m">nicht</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Och vreest ghy niet voor Godts <rhyme label="a" type="m" corresp="#s3:l1">Gericht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ghy hebt u in den Doot <rhyme label="a" type="m" corresp="#s3:l1">verplicht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Na GOdes Wil te <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Syn Woort niet <rhyme label="b" type="f" corresp="#s3:l4">wederstreven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">T'lichaem seyt: Ick ben stout end <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Met goed' Gesellen by den <rhyme label="a" type="m" corresp="#s4:l1">Wijn</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daer wil ick fraey end vrolijck <rhyme label="a" type="m" corresp="#s4:l1">zijn</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met singhen, springhen, <rhyme label="b" type="f">Danssen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wilt wagen op die <rhyme label="b" type="f" corresp="#s4:l4">Schanssen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De Siel seyt: denck des Rijcken <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die Tijdtlijck Wellust oock aen <rhyme label="a" type="m" corresp="#s5:l1">nam</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hy moest met Lijf end Siel daer <rhyme label="a" type="m" corresp="#s5:l1">van</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wert in die Hell' <rhyme label="b" type="f">begraven</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Als Christus ons doet <rhyme label="b" type="f" corresp="#s5:l4">saghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">T'lichaem seyt: Wat acht ic die <rhyme label="a" type="m">saeg'</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ick heb voor my noch vele <rhyme label="a" type="m" corresp="#s6:l1">Daeg'</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer in ick my wel beet'ren <rhyme label="a" type="m" corresp="#s6:l1">mach</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">End my van Sonde <rhyme label="b" type="f">keeren</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Als Droeff'nis coemt <rhyme label="b" type="f" corresp="#s6:l4">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De Ziel seyt: T'is vergeefts <rhyme label="a" type="m">gekout</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Ghy moget wesen Jonck oft <rhyme label="a" type="m" corresp="#s7:l1">Out</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die doot coemt alsoo Arch en <rhyme label="a" type="m" corresp="#s7:l1">stout</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">T'sy Avont oft tsy <rhyme label="b" type="f">Morghen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die uyr is dy <rhyme label="b" type="f" corresp="#s7:l4">verborghen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">T'lichaem seyt: Het sy vroech of <rhyme label="a" type="m">spaed'</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Ick sie voor my des Werelts <rhyme label="a" type="m" corresp="#s8:l1">Paed'</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Een yeg'lijck peynst om tijdtlijck <rhyme label="a" type="m" corresp="#s8:l1">Raet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Daer in wil ick my <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">So lang' ick heb myn <rhyme label="b" type="f" corresp="#s8:l4">Leven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De Ziele seyt: Het coemt die <rhyme label="a" type="m">Tijdt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dat t'Lichaem wort de Ziele <rhyme label="a" type="m" corresp="#s9:l1">quijt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Wat batet dan Tijdtlijck <rhyme label="a" type="m" corresp="#s9:l1">Profijt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Ghy moet tot Aerde <rhyme label="b" type="f">weerden</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Want ghy zijt van der <rhyme label="b" type="f" corresp="#s9:l4">Aerden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">T'lichaem seyt: Ghy maect my <rhyme label="a" type="m">bang'</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dat my na eewig' vreugd' <rhyme label="a" type="m" corresp="#s10:l1">verlang'</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Christus help dat het wel <rhyme label="a" type="m" corresp="#s10:l1">Voortgang'</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Ick moet my Recht <rhyme label="b" type="f">bekeeren</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Myn Treuren wil <rhyme label="b" type="f" corresp="#s10:l4">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">De Ziele seyt: Ten is gheen <rhyme label="a" type="m">spot</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Een broken Hert behaghet <rhyme label="a" type="m" corresp="#s11:l1">Godt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">T'lichaem dat moet doch int <rhyme label="a" type="m" corresp="#s11:l1">Verrot</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Want serff'lijck ist <rhyme label="b" type="f">gheboren</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">End gaet Tijdtlijck <rhyme label="b" type="f" corresp="#s11:l4">verloren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">De Lichaem seyt: O God myn <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Help dat ick my tot Christum <rhyme label="a" type="m" corresp="#s12:l1">keer</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Heylighe Gheest myn G'looff <rhyme label="a" type="m" corresp="#s12:l1">vermeer</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Maeckt dat ick duldich <rhyme label="b" type="f">lijde</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">End Eewich my <rhyme label="b" type="f" corresp="#s12:l4">verblijde</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">De Ziele seyt: Nu heb ick <rhyme label="a" type="m">Recht</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Al ben ick een onnutte <rhyme label="a" type="m" corresp="#s13:l1">Knecht</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">HEer GOdt ghy bent alleen <rhyme label="a" type="m" corresp="#s13:l1">Gerecht</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Vrijet ons van s'Duyvels <rhyme label="b" type="f">Banden</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Het staet in dijnen <rhyme label="b" type="f" corresp="#s13:l4">Handen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Alsoo heeft nu dit Liedt een <rhyme label="a" type="m">Eynd'</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Godt gheeff dat elck syn Hert <rhyme label="a" type="m" corresp="#s14:l1">bekenn'</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">End hem van sond' tot Christum <rhyme label="a" type="m" corresp="#s14:l1">weynd'</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">So sal hy ons toe <rhyme label="b" type="f">keeren</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Met Salicheyt <rhyme label="b" type="f" corresp="#s14:l4">vereeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
