    <melody>Wir glauben all an einen Gott</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Philips van Marnix</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">WY gheloouen in eenen God <rhyme label="a" type="m">alleyn</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Schepper des hemels end' der <rhyme label="b" type="f">erden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Onser aller Vader <rhyme label="a" type="m" corresp="#s1:l1">ghemeyn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die ons laet syne kinders <rhyme label="b" type="f" corresp="#s1:l2">werden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Hy wilt ons altijt <rhyme label="c" type="f">geneiren</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Lijf' end' siel oock wel <rhyme label="d" type="f">bewaeren</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">All' ongheval wilt hy <rhyme label="c" type="f" corresp="#s1:l5">weiren</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Gheen leyd sal ons <rhyme label="d" type="f" corresp="#s1:l6">te-ghenvaren</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Hy sorght end' waeckt voor ons dach end' <rhyme label="e" type="m">nacht</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Het staet alles in syner <rhyme label="e" type="m" corresp="#s1:l9">macht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">* Wy gheloouen in Christum all' <rhyme label="a" type="m">ghelijck</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Synen son' end' onsen <rhyme label="b" type="f">Heere</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Erfachtich in zijns Vaders <rhyme label="a" type="m" corresp="#s2:l1">rijck</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ghelijck Godt van macht end' <rhyme label="b" type="f" corresp="#s2:l2">eere</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Wt Marien der maegh't <rhyme label="c" type="f">sade</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Ons een ware mensch <rhyme label="d" type="f">gheboren</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Door Gods Gheest, uyt louter <rhyme label="c" type="f" corresp="#s2:l5">gh'nade</rhyme>:</l>
        <l id="s2:l8" met="4" type="-+">Voor ons door de sond' <rhyme label="d" type="f" corresp="#s2:l6">verloren</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Aen t'cruys ghestoruen end' <rhyme label="e" type="m">gheleyt</rhyme></l>
        <l id="s2:l10" met="4" type="-+">Int graf, tot zijns doods <rhyme label="e" type="m" corresp="#s2:l9">sekerheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">* Ten derden dagh' om ons <rhyme label="a" type="m">gherechticheyt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Van den dooden is <rhyme label="b" type="f">opghestanden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Door s'Vaders cracht in <rhyme label="a" type="m" corresp="#s3:l1">heerlijckheyt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Verlossend' ons uyt s'vyants <rhyme label="b" type="f" corresp="#s3:l2">banden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Is ten hemel op <rhyme label="c" type="f">verheuen</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Vander eerde in't <rhyme label="d" type="f">openbare</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Sitt Gods rechter hand <rhyme label="c" type="f" corresp="#s3:l5">beneuen</rhyme>:</l>
        <l id="s3:l8" met="4" type="-+">Voor ons een recht <rhyme label="d" type="f" corresp="#s3:l6">middelare</rhyme>:</l>
        <l id="s3:l9" met="4" type="-+">Van waer hy ten eynde comen <rhyme label="e" type="m">sal</rhyme></l>
        <l id="s3:l10" met="4" type="-+">Richten leuend' end' dooden <rhyme label="e" type="m" corresp="#s3:l9">al</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">* Wy gheloouen inden heylighen <rhyme label="a" type="m">Gheest</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">God met den Vader end' den <rhyme label="b" type="f">Sone</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Die ons troost end' maeckt <rhyme label="a" type="m" corresp="#s4:l1">onbevreest</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Ende verciert mit gauen <rhyme label="b" type="f" corresp="#s4:l2">schone</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">All' de Christenheyt <rhyme label="c" type="f">verheuen</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">Tot recht' eenicheyt <rhyme label="d" type="f">begheuen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Welcker de sond' werdt <rhyme label="c" type="f" corresp="#s4:l5">vergheuen</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Dat vleesch sal noch weder <rhyme label="d" type="f" corresp="#s4:l6">leuen</rhyme>.</l>
        <l id="s4:l9" met="4" type="-+">Na desen jammer is nu <rhyme label="e" type="m">bereyt</rhyme></l>
        <l id="s4:l10" met="4" type="-+">Ons een leuen in <rhyme label="e" type="m" corresp="#s4:l9">eewicheyt</rhyme>.</l>
      </lg>
    </lg>
