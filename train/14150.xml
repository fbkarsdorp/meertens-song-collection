  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEewijl die tijt voor handen <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat wy hier moeten <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Soo wil ons Godt alsoo <rhyme label="a" type="m" corresp="#s1:l1">ghewis</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ghenadelick <rhyme label="b" type="f" corresp="#s1:l2">gheleyden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Op dat wy dat betrachten <rhyme label="c" type="m">voort</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat wy alhier hebben <rhyme label="c" type="m" corresp="#s1:l5">ghehoort</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En ons moghen <rhyme label="b" type="f" corresp="#s1:l2">bereyden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Op dat wy dan soo in dien <rhyme label="a" type="m">dach</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Staen aen zijn rechte <rhyme label="b" type="f">Syde</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Als Christus sal maken <rhyme label="a" type="m" corresp="#s2:l1">ghewach</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Compt ghy <rhyme label="b" type="f" corresp="#s2:l2">Gheurdyde</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Besidt het Rijck dat u <rhyme label="c" type="m">bereydt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Is van begin in <rhyme label="c" type="m" corresp="#s2:l5">Eeuwicheydt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Verlost van alle <rhyme label="b" type="f" corresp="#s2:l2">lyde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hierom soo laet ons naerstich <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met bidden ende <rhyme label="b" type="f">waken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Op dat wy hier uyt dese <rhyme label="a" type="m" corresp="#s3:l1">pijn</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot sulcker vreucht <rhyme label="b" type="f" corresp="#s3:l2">gheraken</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">By Godt en zijn Engelen <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Hier boven in des Hemels <rhyme label="c" type="m" corresp="#s3:l5">throon</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Der Engelen spijse <rhyme label="b" type="f" corresp="#s3:l2">smaken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O God daer nae staet ons <rhyme label="a" type="m">begeert</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Laet ghy ons dat <rhyme label="b" type="f">ghelinghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat uwen Naem worde <rhyme label="a" type="m" corresp="#s4:l1">ghe-eert</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wat wy spreken en <rhyme label="b" type="f" corresp="#s4:l2">singhen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dat t'gheschiede met <rhyme label="c" type="m">aendacht</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En met der daet ooc werd' <rhyme label="c" type="m" corresp="#s4:l5">volbracht</rhyme></l>
        <l id="s4:l7" met="3" type="-+">En ons boos vleesch <rhyme label="b" type="f" corresp="#s4:l2">bedwinghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dat het den Geest gehoorsaem <rhyme label="a" type="m">sy</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dit cort verganckelick <rhyme label="b" type="f">Leven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Met uwer ghenaden woont ons <rhyme label="a" type="m" corresp="#s5:l1">by</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Vwen vre wilt ons <rhyme label="b" type="f" corresp="#s5:l2">gheven</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Haut ons in rechter <rhyme label="c" type="m">eenicheyt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Bewaert u Volck tot alder <rhyme label="c" type="m" corresp="#s5:l5">tijt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Tot ghyse sult <rhyme label="b" type="f" corresp="#s5:l2">verheuen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En voeren in u eevwich <rhyme label="a" type="m">rijck</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met der hemelscher <rhyme label="b" type="f">scharen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hier mede wil ons <rhyme label="a" type="m" corresp="#s6:l1">ghenaedelijck</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Godt al t'samen <rhyme label="b" type="f" corresp="#s6:l2">bewaren</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Op dat wy moghen gheschickt <rhyme label="c" type="m">staen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Als hemel en Aerde sal <rhyme label="c" type="m" corresp="#s6:l5">vergaen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En godt sal <rhyme label="b" type="f" corresp="#s6:l2">openbaren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ons siel en lijf in uwe <rhyme label="a" type="m">hant</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Doen wy, o heere, <rhyme label="b" type="f">bevelen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Blijft, ghy by ons tot aen het <rhyme label="a" type="m" corresp="#s7:l1">ent</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Soo moghen wy niet <rhyme label="b" type="f" corresp="#s7:l2">felen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">De wijl het moet ghescheyden <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Willen wy godt lof singhen <rhyme label="c" type="m" corresp="#s7:l5">fijn</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Een modich wt der <rhyme label="b" type="f" corresp="#s7:l2">Kelen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">V vader, soon, en heylich <rhyme label="a" type="m">gheest</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Eenighe godt met <rhyme label="b" type="f">namen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als dat ghy hebt geschapen <rhyme label="a" type="m" corresp="#s8:l1">meest</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Saud' u loven te <rhyme label="b" type="f" corresp="#s8:l2">samen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Nu wy scheyden aen desen <rhyme label="c" type="m">cant</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Haut ons in uwer liefden <rhyme label="c" type="m" corresp="#s8:l5">bant</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Door Jesum Christum <rhyme label="b" type="f" corresp="#s8:l2">amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
