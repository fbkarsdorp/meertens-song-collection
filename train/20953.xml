  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Myn ziel! wilt nu <rhyme label="a" type="f">oprijsen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Tot lof van uwen <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Mijn ziel! wilt Godt gaen <rhyme label="a" type="f" corresp="#s1:l1">prijsen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Verkondicht Godes <rhyme label="b" type="m" corresp="#s1:l2">eer</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Godt heeft u veel goets <rhyme label="c" type="m">gedaen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Godt heeft vroom u <rhyme label="c" type="m" corresp="#s1:l5">bygestaen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En geholpen uyt uw' <rhyme label="d" type="m">noodt</rhyme>:</l>
        <l id="s1:l8" met="4" type="+-">Daerom ne'ervalt op uw' <rhyme label="e" type="m">knien</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Wilt sijn heyl'gen naem <rhyme label="e" type="m" corresp="#s1:l8">belie'n</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Eer dat aenkomt u de <rhyme label="d" type="m" corresp="#s1:l7">doodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De schoone Hemels <rhyme label="a" type="f">straten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Godt eerstmael voor u <rhyme label="b" type="m">schiep</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Maer ghy hebt Godt <rhyme label="a" type="f" corresp="#s2:l1">verlaten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ghy wegh van Iesus <rhyme label="b" type="m" corresp="#s2:l2">liep</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Dan siet, Godt u vleys <rhyme label="c" type="m">aennam</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Godt u weder soecken <rhyme label="c" type="m" corresp="#s2:l5">quam</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">U, die wech geloopen <rhyme label="d" type="m">waert</rhyme>:</l>
        <l id="s2:l8" met="4" type="+-">Hier van gheeft <rhyme label="e" type="m">getuycgenis</rhyme></l>
        <l id="s2:l9" met="4" type="+-">Bethl'hem, daer gebooren <rhyme label="e" type="m" corresp="#s2:l8">is</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Iesus. die all' eer is <rhyme label="d" type="m" corresp="#s2:l7">waerd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mijn ziel! ghy waert <rhyme label="a" type="f">verlooren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Door Adams sware <rhyme label="b" type="m">sond'</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Dan Godt heeft u <rhyme label="a" type="f" corresp="#s3:l1">verkooren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wien ghy hadt swaer <rhyme label="b" type="m" corresp="#s3:l2">gewondt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Denckt wat all geleden <rhyme label="c" type="m">heeft</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Die voor alle eeuwen <rhyme label="c" type="m" corresp="#s3:l5">leeft</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Om dat hy u lossen <rhyme label="d" type="m">sou</rhyme>!</l>
        <l id="s3:l8" met="4" type="+-">Siet eens aen sijn dierbaer <rhyme label="e" type="m">bloedt</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">Let op sijnder tranen <rhyme label="e" type="m" corresp="#s3:l8">vloedt</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Die hy stort tot u <rhyme label="d" type="m" corresp="#s3:l7">behouw</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy heeft aen 't kruys <rhyme label="a" type="f">gehangen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Aen 't kruys voor u <rhyme label="b" type="m">gebe'en</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Des wilt met groot <rhyme label="a" type="f" corresp="#s4:l1">verlangen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En yver, by Godt <rhyme label="b" type="m" corresp="#s4:l2">tre'en</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Wilt hem geven danck en <rhyme label="c" type="m">lof</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Die uw' sonden groot en <rhyme label="c" type="m" corresp="#s4:l5">grof</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Met sijn bloedt heeft <rhyme label="d" type="m">uytgewist</rhyme>.</l>
        <l id="s4:l8" met="4" type="+-">Iesus heeft ter <rhyme label="e" type="m">ne'ergeleyt</rhyme></l>
        <l id="s4:l9" met="4" type="+-">All' het geen, 't welck had <rhyme label="e" type="m" corresp="#s4:l8">bereydt</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">Tusschen u en Godt, den <rhyme label="d" type="m" corresp="#s4:l7">twist</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Behalven dees <rhyme label="a" type="f">weldaden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hebt ghy noch meer <rhyme label="b" type="m">ontfaen</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Getoont heeft Godt <rhyme label="a" type="f" corresp="#s5:l1">genade</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Als gh'waert met sond' <rhyme label="b" type="m" corresp="#s5:l2">belae'n</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Hy heeft dickwerf <rhyme label="c" type="m">naderhandt</rhyme></l>
        <l id="s5:l6" met="4" type="+-">U verlost uyt d'helschen <rhyme label="c" type="m" corresp="#s5:l5">brandt</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Als ghy in doodt sonden <rhyme label="d" type="m">lach</rhyme>.</l>
        <l id="s5:l8" met="4" type="+-">Tot dit eynd' heeft <rhyme label="e" type="m">ingestelt</rhyme></l>
        <l id="s5:l9" met="4" type="+-">'t Biechten (soo de Schrift <rhyme label="e" type="m" corresp="#s5:l8">vermeldt</rhyme>)</l>
        <l id="s5:l10" met="4" type="+-">Christus na sijn stervens <rhyme label="d" type="m" corresp="#s5:l7">dach</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hoe dickmaels heeft <rhyme label="a" type="f">ontbonden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Vergeven all' u <rhyme label="b" type="m">quaedt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En all' uw' vuyle <rhyme label="a" type="f" corresp="#s6:l1">sonden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Uw' trouwe <rhyme label="b" type="m" corresp="#s6:l2">Toeverlaet</rhyme>!</l>
        <l id="s6:l5" met="4" type="+-">Daerom toont een danckbaer <rhyme label="c" type="m">hart</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">En in blyschap, en in <rhyme label="c" type="m" corresp="#s6:l5">smart</rhyme></l>
        <l id="s6:l7" met="4" type="+-">Soo langh als ghy leven <rhyme label="d" type="m">sult</rhyme>.</l>
        <l id="s6:l8" met="4" type="+-">Och of ghy met hart, en <rhyme label="e" type="m">tongh</rhyme></l>
        <l id="s6:l9" met="4" type="+-">Lustich Godes lof uyt <rhyme label="e" type="m" corresp="#s6:l8">songh</rhyme>!</l>
        <l id="s6:l10" met="4" type="+-">Die u quijtschelt uwen <rhyme label="d" type="m" corresp="#s6:l7">schuldt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Komt Seraph! en wilt <rhyme label="a" type="f">loven</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Met my Godts eenigh <rhyme label="b" type="m">Soon</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Komt all' die zijt daer <rhyme label="a" type="f" corresp="#s7:l1">boven</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Komt daelen uyt uw' <rhyme label="b" type="m" corresp="#s7:l2">throon</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Ey!komt op dit aerdtsche <rhyme label="c" type="m">dal</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Looft met my den grooten <rhyme label="c" type="m" corresp="#s7:l5">AL</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">G'lijck ghy doet in 's Hemels <rhyme label="d" type="m">Zael</rhyme>:</l>
        <l id="s7:l8" met="4" type="+-">Waer Godts lof ghy altijdt <rhyme label="e" type="m">singht</rhyme>,</l>
        <l id="s7:l9" met="4" type="+-">Waer van vreughden ghy oock <rhyme label="e" type="m" corresp="#s7:l8">springht</rhyme>;</l>
        <l id="s7:l10" met="4" type="+-">Laet w'hem leven <rhyme label="d" type="m" corresp="#s7:l7">allemael</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
