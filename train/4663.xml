    <melody>Baise-moi ma Jeanneton</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">IS des boos heyds eige <rhyme label="a" type="m">stoel</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Niet wel vast <rhyme label="b" type="f">gebakken</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Aen ’t Gommariaens <rhyme label="a" type="m" corresp="#s1:l1">gevoel</rhyme>?</l>
        <l id="s1:l4" met="3" type="+-">Dat zoo zware <rhyme label="b" type="f" corresp="#s1:l2">pakken</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Durft verzieren in’t <rhyme label="c" type="m">gebod</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">’t Welk den alderbesten <rhyme label="c" type="m" corresp="#s1:l5">God</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Ons, in ’t kranke <rhyme label="d" type="f">leven</rhyme>:</l>
        <l id="s1:l8" met="3" type="+-">Heeft belieft te <rhyme label="d" type="f" corresp="#s1:l7">geven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">’t Js een vleesbank, zeggen <rhyme label="a" type="m">zy</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Datmen all’ zijn <rhyme label="b" type="f">zonden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Met bescheidelijk <rhyme label="a" type="m" corresp="#s2:l1">bely</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Kennen moet by <rhyme label="b" type="f" corresp="#s2:l2">monde</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Jae d’onverstandigheyd van <rhyme label="c" type="m">dien</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Aenden Priester laten <rhyme label="c" type="m" corresp="#s2:l5">zien</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Zonder yet te <rhyme label="d" type="f">heelen</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Zonder yet te <rhyme label="d" type="f" corresp="#s2:l7">deelen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hier op gaf <rhyme label="a" type="m">Tertulliaen</rhyme>.</l>
        <l id="s3:l2" met="3" type="+-">Andwoord in zijn <rhyme label="b" type="f">tijden</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Sydy mette Biecht <rhyme label="a" type="m" corresp="#s3:l1">belaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Schaemt gh’u te <rhyme label="b" type="f" corresp="#s3:l2">belijden</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Om een weinig eerbaer <rhyme label="c" type="m">roods</rhyme>?</l>
        <l id="s3:l6" met="4" type="+-">Zoo denkt om de Vierschaer <rhyme label="c" type="m" corresp="#s3:l5">Goods</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Daer zoo veel <rhyme label="d" type="f">oorkonden</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Zullen zien uw’ <rhyme label="d" type="f" corresp="#s3:l7">zonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">’t Is de Biecht, het is ’t <rhyme label="a" type="m">bevel</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Christi, daer de <rhyme label="b" type="f">schande</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daer de zonde, daer de <rhyme label="a" type="m" corresp="#s4:l1">hel</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Daer de stale <rhyme label="b" type="f" corresp="#s4:l2">banden</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Daer ’t oneindelijk <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Ganschelijk door gaet te <rhyme label="c" type="m" corresp="#s4:l5">niet</rhyme>.</l>
        <l id="s4:l7" met="3" type="+-">En wie zou voor <rhyme label="d" type="f">dezen</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Wat beschaemtheyds <rhyme label="d" type="f" corresp="#s4:l7">vrezen</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Och! de goe <rhyme label="a" type="m">Samaritaen</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Wil dat wy de <rhyme label="b" type="f">wonden</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Hoe bedekt ook datze <rhyme label="a" type="m" corresp="#s5:l1">staen</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Toonen onzer <rhyme label="b" type="f" corresp="#s5:l2">zonden</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Om daer mee te leren, <rhyme label="c" type="m">dat</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Zijn verheven Throon <rhyme label="c" type="m" corresp="#s5:l5">omvat</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Oordeel en <rhyme label="d" type="f">genade</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Over de mis <rhyme label="d" type="f" corresp="#s5:l7">daden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hier door wil zijn wijs heyd <rhyme label="a" type="m">mee</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Dat zijn trouwe <rhyme label="b" type="f">knapen</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Weten haer bevolen <rhyme label="a" type="m" corresp="#s6:l1">vee</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Kennen all’ haer <rhyme label="b" type="f" corresp="#s6:l2">schapen</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Op dat elk een nae zijn <rhyme label="c" type="m">aerd</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Wel gevorderd, wel <rhyme label="c" type="m" corresp="#s6:l5">bewaerd</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Of, by krank te <rhyme label="d" type="f">wezen</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">Werden mag <rhyme label="d" type="f" corresp="#s6:l7">genezen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Zelfs ’t genen beste, <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Williglijk <rhyme label="b" type="f">oorkonden</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Dat de Biecht haer ruimen <rhyme label="a" type="m" corresp="#s7:l1">doed</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Groot getal van <rhyme label="b" type="f" corresp="#s7:l2">zonden</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Zoo dat veel verburgen <rhyme label="c" type="m">haets</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Woukers, oproers, en <rhyme label="c" type="m" corresp="#s7:l5">verraeds</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">En meer <rhyme label="d" type="f">diergelijken</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Hier deur moeten <rhyme label="d" type="f" corresp="#s7:l7">wijken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Maer voor al de <rhyme label="a" type="m">Penitent</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Sijnde nu <rhyme label="b" type="f">ontbonden</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Door den Priester voeld en <rhyme label="a" type="m" corresp="#s8:l1">kendt</rhyme></l>
        <l id="s8:l4" met="3" type="+-">Van wat zware <rhyme label="b" type="f" corresp="#s8:l2">ponden</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Hy van binnen is <rhyme label="c" type="m">verlicht</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Is gesterrekt, is <rhyme label="c" type="m" corresp="#s8:l5">gesticht</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">Om de brede <rhyme label="d" type="f">straten</rhyme></l>
        <l id="s8:l8" met="3" type="+-">Nu voordaen te <rhyme label="d" type="f" corresp="#s8:l7">laten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Och! een voordeel wel zoo <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">Dat daerom met <rhyme label="b" type="f">rede</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Tienmael over harder <rhyme label="a" type="m" corresp="#s9:l1">stoot</rhyme></l>
        <l id="s9:l4" met="3" type="+-">Werden zou <rhyme label="b" type="f" corresp="#s9:l2">geleden</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Iesu Heer! uw’ goedheyd <rhyme label="c" type="m">was</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Al te willig, al te <rhyme label="c" type="m" corresp="#s9:l5">ras</rhyme></l>
        <l id="s9:l7" met="3" type="+-">Om haer weer te <rhyme label="d" type="f">paren</rhyme></l>
        <l id="s9:l8" met="3" type="+-">Mette sno’e <rhyme label="d" type="f" corresp="#s9:l7">zondaren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
