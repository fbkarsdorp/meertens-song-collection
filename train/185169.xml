  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Vriendinne wilt <rhyme label="a" type="f">aenschouwen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ghelijck alst wel <rhyme label="b" type="m">betaemt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">‘t Exempel van die <rhyme label="a" type="f" corresp="#s1:l1">vrouwen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die heylich syn <rhyme label="b" type="m" corresp="#s1:l2">ghenaemt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Die vrouwen die haer hope <rhyme label="c" type="m">net</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Hebben geset // op Godt, wiens <rhyme label="c" type="m" corresp="#s1:l5">wet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Sy hielden suyver en <rhyme label="c" type="m" corresp="#s1:l5">onbesmet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En wilt u niet <rhyme label="a" type="f">vercieren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met kostelick <rhyme label="b" type="m">gewaet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer met stille <rhyme label="a" type="f" corresp="#s2:l1">manieren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En inwendich <rhyme label="b" type="m" corresp="#s2:l2">cieraet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Met eenen geest van moede <rhyme label="c" type="m">sacht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Vol van aendacht // want sulcke <rhyme label="c" type="m" corresp="#s2:l5">dracht</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Is kostelick voor Godt <rhyme label="c" type="m" corresp="#s2:l5">gheacht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wilt onderdanich <rhyme label="a" type="f">blycken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">V man, in groot en <rhyme label="b" type="m">kleyn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Op dat ghy meucht <rhyme label="a" type="f" corresp="#s3:l1">ghelijcken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Sara, die Vrouwe <rhyme label="b" type="m" corresp="#s3:l2">reyn</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die haren man bewees die <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Sy boogh daer neer // en noemd’ hem <rhyme label="c" type="m" corresp="#s3:l5">Heer</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Haer voorbeelt sy u tot een <rhyme label="c" type="m" corresp="#s3:l5">leer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Het stout eyghen <rhyme label="a" type="f">verkiesen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van Vasthi <rhyme label="b" type="m">Coningin</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat dede haer <rhyme label="a" type="f" corresp="#s4:l1">verliesen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Des Conincx hert en <rhyme label="b" type="m" corresp="#s4:l2">sin</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Maer die ootmoet // van Esther <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dwanck zijn gemoet // tot alle <rhyme label="c" type="m" corresp="#s4:l5">goet</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Wanneer sy voor hem viel te <rhyme label="c" type="m" corresp="#s4:l5">voet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Abigael sal u <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met wijsheyt en <rhyme label="b" type="m">verstant</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Alles ten besten <rhyme label="a" type="f" corresp="#s5:l1">keeren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Door een beleefde <rhyme label="b" type="m" corresp="#s5:l2">handt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">David van zijn voornemen <rhyme label="c" type="m">stont</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En Nabals gront // die wert <rhyme label="c" type="m" corresp="#s5:l5">gewont</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Al door der vrouwen wijse <rhyme label="c" type="m" corresp="#s5:l5">vont</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Door sulcken middel <rhyme label="a" type="f">connen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sy die gelooven <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">In ‘t herte zijn <rhyme label="a" type="f" corresp="#s6:l1">ghewonnen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">‘t Welck sonder ‘t woort <rhyme label="b" type="m" corresp="#s6:l2">gheschiet</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Als sy aensien u <rhyme label="c" type="m">wandelingh</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">So sonderlingh // in alle <rhyme label="c" type="m" corresp="#s6:l5">dingh</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Suyver, ootmoedich, en <rhyme label="c" type="m" corresp="#s6:l5">geringh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">V huys moet ghy <rhyme label="a" type="f">bewaren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In alle <rhyme label="b" type="m">zedicheyt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Maer ‘t herte niet <rhyme label="a" type="f" corresp="#s7:l1">beswaren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Met veel <rhyme label="b" type="m" corresp="#s7:l2">sorchvuldicheyt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Als die becommerde <rhyme label="c" type="m">Martha</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Maer slaet wel ga // en volghet <rhyme label="c" type="m" corresp="#s7:l5">na</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Dat stille wesen van <rhyme label="c" type="m" corresp="#s7:l5">Maria</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dat schalcke <rhyme label="a" type="f">ongheloove</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dat can onder den <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Van neerstichett <rhyme label="a" type="f" corresp="#s8:l1">verdooven</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Der zielen <rhyme label="b" type="m" corresp="#s8:l2">medecijn</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Verscheyden lusten hier en <rhyme label="c" type="m">daer</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Verstellen haer // als of het <rhyme label="c" type="m" corresp="#s8:l5">maer</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Alleen om pure nootdruft <rhyme label="c" type="m" corresp="#s8:l5">waer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Vertoonen haer de <rhyme label="a" type="f">saken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Dat ghy gheen deurganck <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Denckt: Godt die salt wel <rhyme label="a" type="f" corresp="#s9:l1">maken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Al sien ick het nu <rhyme label="b" type="m" corresp="#s9:l2">niet</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Verbeyt gheduldich op den <rhyme label="c" type="m">tijt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Swijght ende lijdt // ghy wert <rhyme label="c" type="m" corresp="#s9:l5">bevrijt</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Van ‘s herten quellingh ende <rhyme label="c" type="m" corresp="#s9:l5">strijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Want u Hemelsche <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die alle dinck <rhyme label="b" type="m">aenschout</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die is u al veel <rhyme label="a" type="f" corresp="#s10:l1">nader</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Als ghy wel toe <rhyme label="b" type="m" corresp="#s10:l2">vertrout</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">In u ghebeden hem <rhyme label="c" type="m">voorstelt</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Het geen u quelt // druckt of <rhyme label="c" type="m" corresp="#s10:l5">ontstelt</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Door hem sult ghy behouden ‘t <rhyme label="c" type="m" corresp="#s10:l5">velt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
