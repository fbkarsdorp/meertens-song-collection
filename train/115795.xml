  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Daar-om, o on-wijze <rhyme label="a" type="m">Mensch</rhyme>!</l>
        <l id="s1:l2" met="2" type="+-">Doe geen <rhyme label="a" type="m" corresp="#s1:l1">wensch</rhyme></l>
        <l id="s1:l3" met="4" type="+-">In natuurelijke <rhyme label="b" type="f">zaaken</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Stel u zelven in Gods <rhyme label="c" type="m">wil</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Hou u <rhyme label="c" type="m" corresp="#s1:l4">stil</rhyme>;</l>
        <l id="s1:l6" met="4" type="+-">Hy zal alle ding wel <rhyme label="b" type="f" corresp="#s1:l3">maaken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Let eens wel op uw <rhyme label="a" type="m">gemoed</rhyme>;</l>
        <l id="s2:l2" met="2" type="+-">'t Staat zoo <rhyme label="a" type="m" corresp="#s2:l1">zoet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als gy 't niet en maakt <rhyme label="b" type="f">on-rustig</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Als gy God in 't herte <rhyme label="c" type="m">mind</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Gy <rhyme label="c" type="m" corresp="#s2:l4">bevind</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat 'er niet en is zoo <rhyme label="b" type="f" corresp="#s2:l3">lustig</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wel-lust, eere, rijkdom, <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Wat is <rhyme label="a" type="m" corresp="#s3:l1">dat</rhyme>!</l>
        <l id="s3:l3" met="4" type="+-">'t Geeft u tog geen baat van <rhyme label="b" type="f">binnen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">'t Zal u dienen meer tot <rhyme label="c" type="m">strijd</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Dan <rhyme label="c" type="m" corresp="#s3:l4">proffijt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Buiten God is niet te <rhyme label="b" type="f" corresp="#s3:l3">winnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
