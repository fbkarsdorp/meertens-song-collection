  <author>Frans vander Straten de jongere</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SYt sterck door den <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En door de macht zijnder <rhyme label="b" type="m">sterckheyt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Strijt vroom tot elcken <rhyme label="a" type="f" corresp="#s1:l1">keere</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Siet dat ghy altijt neerstich <rhyme label="b" type="m" corresp="#s1:l2">arbeyt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Naer gheloove en vrede met <rhyme label="b" type="m" corresp="#s1:l2">gehoorsaemheyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Aen grijpt de liefde <rhyme label="a" type="f">vierich</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met eenen cloecken <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Volcht Christus <rhyme label="a" type="f" corresp="#s2:l1">goedertierich</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Want hy is vol van al <rhyme label="b" type="m" corresp="#s2:l2">ootmoet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Sijn Last is licht zijn Jock is <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een vrye open <rhyme label="a" type="f">Fonteyne</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Is den Huyse Davids op <rhyme label="b" type="m">ghestaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Voor de sonde en <rhyme label="a" type="f" corresp="#s3:l1">onreyne</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die met haer sonden zijn <rhyme label="b" type="m" corresp="#s3:l2">belaen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die worden daer in genaden <rhyme label="b" type="m" corresp="#s3:l2">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Recht by Jerusalems <rhyme label="a" type="f">mueren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Was eenen vyver <rhyme label="b" type="m">certeyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die den Engel aenroerden tot sommiger <rhyme label="a" type="f" corresp="#s4:l1">ueren</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Die daer eerst in daelde die werden <rhyme label="b" type="m" corresp="#s4:l2">reyn</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Van hare cranckheden alsoo ick <rhyme label="b" type="m" corresp="#s4:l2">meyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Kent ghy desen Vyver te <rhyme label="a" type="f">Rechte</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ick verstaet voor Christus en zijn ghemeente <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die daer toe comen recht en <rhyme label="a" type="f" corresp="#s5:l1">slechte</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Worden ontfangen met blyden <rhyme label="b" type="m" corresp="#s5:l2">aenschijn</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Als sy van nieus herbooren <rhyme label="b" type="m" corresp="#s5:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Herbooren moeten wy <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wt water en geest <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">In een nieu leven <rhyme label="a" type="f" corresp="#s6:l1">verresen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En op ghestaen al met <rhyme label="b" type="m" corresp="#s6:l2">Christy</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Soo worden wy von sonden <rhyme label="b" type="m" corresp="#s6:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Naer het enge compt het <rhyme label="a" type="f">wyde</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Naer weenen groot <rhyme label="b" type="m">jolijt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wy sullen met den Heere <rhyme label="a" type="f" corresp="#s7:l1">verblyden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Al ist dat wy eenen cleynen <rhyme label="b" type="m" corresp="#s7:l2">tijt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Om zijnen name worden <rhyme label="b" type="m" corresp="#s7:l2">benijt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Aen siet al mijn <rhyme label="a" type="f">elende</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">O Almachtighe <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Wilt uwen geest in my <rhyme label="a" type="f" corresp="#s8:l1">senden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Sterckt my al inde rechte <rhyme label="b" type="m" corresp="#s8:l2">leer</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Dat is van herten al mijn <rhyme label="b" type="m" corresp="#s8:l2">begeer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Een Edelman reysde over den <rhyme label="a" type="f">velde</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En sprack zijn knechten <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Sijnen wille hy haer <rhyme label="a" type="f" corresp="#s9:l1">vertelde</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Al wat hy wilde hebben <rhyme label="b" type="m" corresp="#s9:l2">ghedaen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Dese hebben zijnen schat <rhyme label="b" type="m" corresp="#s9:l2">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Rekeninghe moet ghy <rhyme label="a" type="f">gheuen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Sprack de Heere naer schrifs <rhyme label="b" type="m">vermaen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die weynich hadden <rhyme label="a" type="f" corresp="#s10:l1">vercreghen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Hiet hy in de eewighe vreuchde <rhyme label="b" type="m" corresp="#s10:l2">gaen</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Maer den tragen die moeste met schande <rhyme label="b" type="m" corresp="#s10:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Recht tot onser <rhyme label="a" type="f">leere</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Is dit gheschreuen <rhyme label="b" type="m">verstaet</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Op dat wy ons souden <rhyme label="a" type="f" corresp="#s11:l1">bekeeren</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Al van ons sondich leuen <rhyme label="b" type="m" corresp="#s11:l2">quaet</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Eer dat op een rekenen <rhyme label="b" type="m" corresp="#s11:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Een eerlijcke <rhyme label="a" type="f">croone</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Sal daer wesen <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Soo Esdras stelt ten <rhyme label="a" type="f" corresp="#s12:l1">toone</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Al met dat witte zijde <rhyme label="b" type="m" corresp="#s12:l2">cleyt</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Die den doodelijcken Rock hebben <rhyme label="b" type="m" corresp="#s12:l2">afgheleyt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Noyt menschen ooren en mochtent <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Noch ooghen en heeft <rhyme label="b" type="m">ghesien</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Hoe dat Gods <rhyme label="a" type="f" corresp="#s13:l1">wtvercoren</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Met den Heere sullen <rhyme label="b" type="m" corresp="#s13:l2">verblijen</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Die om zijnen name moeten <rhyme label="b" type="m" corresp="#s13:l2">lijen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Staet bereyt inde <rhyme label="a" type="f">wachte</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Met de wijse maechden <rhyme label="b" type="m">beraen</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Op dat ghy sonder <rhyme label="a" type="f" corresp="#s14:l1">clachte</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Al met den Bruydegom meucht in <rhyme label="b" type="m" corresp="#s14:l2">gaen</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Dit geue ick u tot een <rhyme label="b" type="m" corresp="#s14:l2">vermaen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Oorlof suster <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Ick bevele u hier mede den <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Wilt my ghedachtich <rhyme label="a" type="f" corresp="#s15:l1">wesen</rhyme></l>
        <l id="s15:l4" met="4" type="-+">In u ghebet al tot den <rhyme label="b" type="m" corresp="#s15:l2">Heer</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Van hem en scheydet <rhyme label="b" type="m" corresp="#s15:l2">nimmermeer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
