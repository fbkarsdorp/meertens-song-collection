  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Hier is mijn <rhyme label="a" type="m">beproevingstand</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hier is niet mijn blijvende <rhyme label="b" type="f">erve</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Daer, daer is mijn <rhyme label="a" type="m" corresp="#s1:l1">Vaderland</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat bereik ik, wen ik <rhyme label="b" type="f" corresp="#s1:l2">sterve</rhyme>. -</l>
        <l id="s1:l5" met="4" type="+-">Heerlijk, zalig, grootsch <rhyme label="c" type="m">verschiet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">'k Schrik dan voor mijn sterven <rhyme label="c" type="m" corresp="#s1:l5">niet</rhyme>! -</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Salem, dat daer boven <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Daer, en God, en de Eng'len <rhyme label="b" type="f">wonen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Daer mijn Heilvorst in den <rhyme label="a" type="m" corresp="#s2:l1">strijd</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Mij, na 't strijden, zal <rhyme label="b" type="f" corresp="#s2:l2">bekronen</rhyme>: -</l>
        <l id="s2:l5" met="4" type="+-">'t Denkbeeld lenigt al mijn <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Salem, 'k zal uw Burger <rhyme label="c" type="m" corresp="#s2:l5">zijn</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hij, uw Koning, wilde <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Mij door 't strijdperk <rhyme label="b" type="f">henenleiden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En, daer 'k met Hem <rhyme label="a" type="m" corresp="#s3:l1">zegevier</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">In uw muren plaets <rhyme label="b" type="f" corresp="#s3:l2">bereiden</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Blij vooruitzicht voor 't <rhyme label="c" type="m">gemoed</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">'k Heb straks deel aen al uw <rhyme label="c" type="m" corresp="#s3:l5">goed</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Daeglijks roep ik tot den <rhyme label="a" type="m">throon</rhyme>:</l>
        <l id="s4:l2" met="4" type="+-">Vader, hoor mijn <rhyme label="b" type="f">ziels-verlangen</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Wanneer zal ik de <rhyme label="a" type="m" corresp="#s4:l1">eerekroon</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">'t Loon van Uw genade, <rhyme label="b" type="f" corresp="#s4:l2">ontvangen</rhyme>? -</l>
        <l id="s4:l5" met="4" type="+-">Scheurt u, banden der <rhyme label="c" type="m">natuur</rhyme>! -</l>
        <l id="s4:l6" met="4" type="+-">Nader, vrolijk <rhyme label="c" type="m" corresp="#s4:l5">stervens-uur</rhyme>! -</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ja, een wellust voor mijn <rhyme label="a" type="m">hart</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Zal me, Ã´ Dood! uw naed'ring <rhyme label="b" type="f">wezen</rhyme>: -</l>
        <l id="s5:l3" met="4" type="+-">Dan is 't eind van al mijn <rhyme label="a" type="m" corresp="#s5:l1">smart</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">'k Juich, waer zondaers sidd'rend <rhyme label="b" type="f" corresp="#s5:l2">vrezen</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Zachtkens rust mijn stof in de <rhyme label="c" type="m">aerd'</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Wijl mijn Geest ten Hemel <rhyme label="c" type="m" corresp="#s5:l5">vaert</rhyme>. -</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Somber graf, aen uwen <rhyme label="a" type="m">rand</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Stroomt me een reine vreugd door de <rhyme label="b" type="f">aed'ren</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">'k Oog van daer op 't <rhyme label="a" type="m" corresp="#s6:l1">Vaderland</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Op de woonplaets mijner <rhyme label="b" type="f" corresp="#s6:l2">Vaed'ren</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Die mij, op de <rhyme label="c" type="m">gloriebaen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Door 't geloof, zijn <rhyme label="c" type="m" corresp="#s6:l5">voorgegaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Kom dan, zalig <rhyme label="a" type="m">tijdsgewricht</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Dag der eeuwigheid, kom <rhyme label="b" type="f">nader</rhyme>! -</l>
        <l id="s7:l3" met="4" type="+-">Welk een blij <rhyme label="a" type="m" corresp="#s7:l1">vooruitgezicht</rhyme>! -</l>
        <l id="s7:l4" met="4" type="+-">God, mijn Richter, is mijn <rhyme label="b" type="f" corresp="#s7:l2">Vader</rhyme>. -</l>
        <l id="s7:l5" met="4" type="+-">jesus heeft mij plaets <rhyme label="c" type="m">bereid</rhyme>. -</l>
        <l id="s7:l6" met="4" type="+-">Nader, dag der <rhyme label="c" type="m" corresp="#s7:l5">eeuwigheid</rhyme>! -</l>
      </lg>
    </lg>
  </text>
