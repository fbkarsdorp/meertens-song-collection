    <melody>Daar reed een heer met zijn schildknecht santio</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="6" type="+-">Daar Reed een Heertje met zyn Schild-Knegt, <rhyme label="a" type="f">santio</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Het Smalle pad en de Breede <rhyme label="b" type="m">weg</rhyme>,</l>
        <l id="s1:l3" met="6" type="+-">Nouw weder de kneder de Koorde <rhyme label="a" type="f" corresp="#s1:l1">santio</rhyme>,</l>
        <l id="s1:l4" met="8" type="+-">Iko kante ko de Kandelaar de <rhyme label="a" type="f" corresp="#s1:l1">Isio</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="6" type="+-">De Heer al tegen zyn Dienst-Knegt sprak, <rhyme label="a" type="f">santio</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Stygt op de Boom, krygt het Duifje daar <rhyme label="b" type="m">af</rhyme>,</l>
        <l id="s2:l3" met="6" type="+-">Nouw weder de kneder de Koorde <rhyme label="a" type="f" corresp="#s2:l1">santio</rhyme>,</l>
        <l id="s2:l4" met="8" type="+-">Iko kante ko de Kandelaar de <rhyme label="a" type="f" corresp="#s2:l1">Isio</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="6" type="+-">Myn Heer en dat en doen ik niet, <rhyme label="a" type="f">santio</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">De Takke benne Zwak en verdragen myn <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s3:l3" met="6" type="+-">Nouw weder de kneder de Koorde <rhyme label="a" type="f" corresp="#s3:l1">santio</rhyme>,</l>
        <l id="s3:l4" met="8" type="+-">Iko kante ko de Kandelaar de <rhyme label="a" type="f" corresp="#s3:l1">Isio</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="6" type="+-">De Heer werd Toornig ende Gram, <rhyme label="a" type="f">santio</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hy Klommer den Boom dan zelver <rhyme label="b" type="m">op</rhyme>,</l>
        <l id="s4:l3" met="6" type="+-">Nouw weder de kneder de Koorde <rhyme label="a" type="f" corresp="#s4:l1">santio</rhyme>,</l>
        <l id="s4:l4" met="8" type="+-">Iko kante ko de Kandelaar de <rhyme label="a" type="f" corresp="#s4:l1">Isio</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="6" type="+-">Nouw is myn Heer gevallen Doot, <rhyme label="a" type="f">santio</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Hoe Kryg ik nu myn Verdiende <rhyme label="b" type="m">Loon</rhyme>,</l>
        <l id="s5:l3" met="6" type="+-">Nouw weder de kneder de Koorde <rhyme label="a" type="f" corresp="#s5:l1">santio</rhyme>,</l>
        <l id="s5:l4" met="8" type="+-">Iko kante ko de Kandelaar de <rhyme label="a" type="f" corresp="#s5:l1">Isio</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="6" type="+-">Jouw Verdiende Loon dat Krygt gy wel, <rhyme label="a" type="f">santio</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Daar zyn nog Rosse en Wagen op de <rhyme label="b" type="m">Stal</rhyme>,</l>
        <l id="s6:l3" met="6" type="+-">Nouw weder de kneder de Koorde <rhyme label="a" type="f" corresp="#s6:l1">santio</rhyme>,</l>
        <l id="s6:l4" met="8" type="+-">Iko kante ko de Kandelaar de <rhyme label="a" type="f" corresp="#s6:l1">Isio</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="6" type="+-">Rolle en Wagen Begeer ik niet, <rhyme label="a" type="f">santio</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Maar de Jongste Dogter en Verzweer ik <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s7:l3" met="6" type="+-">Nouw weder de kneder de Koorde <rhyme label="a" type="f" corresp="#s7:l1">santio</rhyme>,</l>
        <l id="s7:l4" met="8" type="+-">Iko kante ko de Kandelaar de <rhyme label="a" type="f" corresp="#s7:l1">Isio</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="6" type="+-">Nouw is de Knegt geworden een Heer, <rhyme label="a" type="f">santio</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Hy Reyt met Koes en Paarden <rhyme label="b" type="m">voor</rhyme>,</l>
        <l id="s8:l3" met="6" type="+-">Nouw weder de kneder de Koorde <rhyme label="a" type="f" corresp="#s8:l1">santio</rhyme>,</l>
        <l id="s8:l4" met="8" type="+-">Iko kante ko de Kandelaar de <rhyme label="a" type="f" corresp="#s8:l1">Isio</rhyme>.</l>
      </lg>
    </lg>
  </text>
