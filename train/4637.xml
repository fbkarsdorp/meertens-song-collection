    <tags/>
    <melody>Kom af tot mij godin</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">TEn zy dat minst <rhyme label="a" type="m">en</rhyme></l>
        <l id="s1:l2" met="3" type="-+">meest//  Wt water werd <rhyme label="b" type="f">herboren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">End’ uyt den heyl’gen <rhyme label="a" type="m" corresp="#s1:l1">Geest</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Zoo zal hy gaen verloren// <rhyme label="b" type="f" corresp="#s1:l2">Een</rhyme></l>
        <l id="s1:l5" met="3" type="-+">reden die ons hooren// Dee <rhyme label="b" type="f" corresp="#s1:l2">d’eerste</rhyme></l>
        <l id="s1:l6" met="3" type="-+">waerheyd zelf// Patroon <rhyme label="c" type="m">van</rhyme></l>
        <l id="s1:l7" met="3" type="-+">’t hoog <rhyme label="c" type="m" corresp="#s1:l6">verwelf</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat ongemete <rhyme label="a" type="m">schae</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Doen dan d’onnos’le <rhyme label="b" type="f">kind’ren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die d’Hemelsche <rhyme label="a" type="m" corresp="#s2:l1">genae</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Des Doopsels, hen <rhyme label="b" type="f" corresp="#s2:l2">verhind’ren</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Och! wanneer zal eens <rhyme label="b" type="f" corresp="#s2:l2">mind’ren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">’t Bederffelijk <rhyme label="c" type="m">gety</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Van Mennoos <rhyme label="c" type="m" corresp="#s2:l6">kettery</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En van de resten <rhyme label="a" type="m">ook</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Die, leyder! zoo veel <rhyme label="b" type="f">zielen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Niet dan door ielen <rhyme label="a" type="m" corresp="#s3:l1">rook</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van eigen zin <rhyme label="b" type="f" corresp="#s3:l2">vernielen</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Onzalig! die <rhyme label="b" type="f" corresp="#s3:l2">vervielen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Tot een zoo wreden <rhyme label="c" type="m">Sect</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Diet beste hen <rhyme label="c" type="m" corresp="#s3:l6">ontrekt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Al wat het vleesch ons <rhyme label="a" type="m">baerdt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Is vleesch, en moet mids <rhyme label="b" type="f">dezen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Eert naer den Hemel <rhyme label="a" type="m" corresp="#s4:l1">aerdt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Van nieus herboren <rhyme label="b" type="f" corresp="#s4:l2">wezen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Want geen ding kan <rhyme label="b" type="f" corresp="#s4:l2">genezen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">De ziekt van <rhyme label="c" type="m">d’errif-zond</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Alst water vande <rhyme label="c" type="m" corresp="#s4:l6">Vont</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">En hierom vind ik, <rhyme label="a" type="m">dat</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Men altijd plag te <rhyme label="b" type="f">lopen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Zoo fluks nae ’t Christen <rhyme label="a" type="m" corresp="#s5:l1">bad</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Om ‘t kind te laten <rhyme label="b" type="f" corresp="#s5:l2">dopen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Ter wijl men noit kon <rhyme label="b" type="f" corresp="#s5:l2">hopen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Hem by gebrek van <rhyme label="c" type="m">dien</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Goods aenschijn te doen <rhyme label="c" type="m" corresp="#s5:l6">zien</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dit heeft aldus <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Altijd der Kerken <rhyme label="b" type="f">oorde</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Zulks wy van  stonden <rhyme label="a" type="m" corresp="#s6:l1">aen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Daer mette eigen <rhyme label="b" type="f" corresp="#s6:l2">woorden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Van Augustinus <rhyme label="b" type="f" corresp="#s6:l2">hoorden</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Die dan van deze <rhyme label="c" type="m">wijkt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Zijn eigen vonnis <rhyme label="c" type="m" corresp="#s6:l6">strijkt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Iae zal, nae Godes <rhyme label="a" type="m">wet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Een eeuwiheid van <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Voor die hy heeft <rhyme label="a" type="m" corresp="#s7:l1">belet</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Noch oordeel moeten <rhyme label="b" type="f" corresp="#s7:l2">dragen</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Waer toe dan zoo te <rhyme label="b" type="f" corresp="#s7:l2">wagen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Zijn ziel, zijn dierste <rhyme label="c" type="m">schat</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Op een zoo nieuwen <rhyme label="c" type="m" corresp="#s7:l6">pad</rhyme>?</l>
      </lg>
    </lg>
  </text>
