  <author>Guillaume Abrahams Ooijevaer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ionghe Ieught, vol <rhyme label="a" type="f">dertelheden</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Wilt af <rhyme label="a" type="f" corresp="#s1:l1">treden</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Vyt dees <rhyme label="b" type="m">wispeltuerigheydt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En wilt nu voortaen <rhyme label="c" type="f">begheven</rhyme></l>
        <l id="s1:l5" met="2" type="+-">'t Sondigh <rhyme label="c" type="f" corresp="#s1:l4">leven</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Eer 't hier naemaels wordt <rhyme label="b" type="m" corresp="#s1:l3">beschreyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want ons sonden zijn soo <rhyme label="a" type="f">zwaerlijck</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s2:l1">vervaerlijck</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Door den Heere onsen <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Daerom laten wy nou <rhyme label="c" type="f">leeren</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Obs <rhyme label="c" type="f" corresp="#s2:l4">bekeeren</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat wy doen na zijn <rhyme label="b" type="m" corresp="#s2:l3">Gebodt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Weeldrigh, prachtigh, en <rhyme label="a" type="f">hooghmoedigh</rhyme></l>
        <l id="s3:l2" met="2" type="+-">
          <rhyme label="a" type="f" corresp="#s3:l1">Overvloedigh</rhyme>
        </l>
        <l id="s3:l3" met="4" type="+-">In wellust en <rhyme label="b" type="m">overdaet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Daer op wy ons sinnen <rhyme label="c" type="f">setten</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Niet en <rhyme label="c" type="f" corresp="#s3:l4">letten</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Oft in Eer en Deught <rhyme label="b" type="m" corresp="#s3:l3">toe-gaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ach! leght af dees boose <rhyme label="a" type="f">wercken</rhyme>.</l>
        <l id="s4:l2" met="2" type="+-">Wilt <rhyme label="a" type="f" corresp="#s4:l1">aenmercken</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Op den Iongen <rhyme label="b" type="m">Tobias</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Hoe dat hy hem heeft <rhyme label="c" type="f">gedragen</rhyme></l>
        <l id="s4:l5" met="2" type="+-">In zijn <rhyme label="c" type="f" corresp="#s4:l4">dagen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">'t Geen dat hem bevolen <rhyme label="b" type="m" corresp="#s4:l3">was</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Daerom wilt oock sulcks <rhyme label="a" type="f">bewijsen</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Hebt <rhyme label="a" type="f" corresp="#s5:l1">afgrijsen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Van dit leven <rhyme label="b" type="m">opstinaet</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En bekeert u <rhyme label="c" type="f">algemeene</rhyme></l>
        <l id="s5:l5" met="2" type="+-">In 'et <rhyme label="c" type="f" corresp="#s5:l4">geene</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Ons soo dier bevolen <rhyme label="b" type="m" corresp="#s5:l3">staet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Soo sal Godt den Heer der <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Ons <rhyme label="a" type="f" corresp="#s6:l1">vermeeren</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Met zijn Woordt, en Heyl'gen <rhyme label="b" type="m">Naem</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Oock met vierigh groot <rhyme label="c" type="f">verlangen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Ons <rhyme label="c" type="f" corresp="#s6:l4">ontfangen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">In zijn eeuwigh Rijck <rhyme label="b" type="m" corresp="#s6:l3">bequaem</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maer die nae hem niet en <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Sullen <rhyme label="a" type="f" corresp="#s7:l1">smooren</rhyme></l>
        <l id="s7:l3" met="4" type="+-">In de duyst're Helsche <rhyme label="b" type="m">Poel</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">'t Welck zy eeuwigh sullen <rhyme label="c" type="f">erven</rhyme></l>
        <l id="s7:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s7:l4">verwerven</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Voor Godts Heyl'ge <rhyme label="b" type="m" corresp="#s7:l3">Rechter-Stoel</rhyme>.</l>
      </lg>
    </lg>
  </text>
