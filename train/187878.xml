  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAnneer als Moses op den <rhyme label="a" type="m">top</rhyme></l>
        <l id="s1:l2" met="5" type="-+">Des steylen kruyns van Pisgas spitse <rhyme label="b" type="m">tradt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Soo quam hem voor het oogh 't <rhyme label="a" type="m" corresp="#s1:l1">vertoogh</rhyme></l>
        <l id="s1:l4" met="5" type="-+">Van 't Landt, daer van Godts volck belofte <rhyme label="b" type="m" corresp="#s1:l2">hadt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dat haer dat in't <rhyme label="c" type="m">gheheel</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Soud sijn tot een <rhyme label="c" type="m" corresp="#s1:l5">erfdeel</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Dus siet hy uyt de <rhyme label="d" type="m">wildernis</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">d'Honighrijcke <rhyme label="e" type="m">kust</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Daer de soete <rhyme label="e" type="m" corresp="#s1:l8">rust</rhyme></l>
        <l id="s1:l10" met="2" type="-+">Voor Isr'el <rhyme label="d" type="m" corresp="#s1:l7">is</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo voert den goeden Godt, oock <rhyme label="a" type="m">tot</rhyme></l>
        <l id="s2:l2" met="5" type="-+">'t Ghesight der rust die men in d'Hemel <rhyme label="b" type="m">krijght</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Een yder Ziel die op den <rhyme label="a" type="m" corresp="#s2:l1">top</rhyme></l>
        <l id="s2:l4" met="5" type="-+">Van Heyl ghe aendacht, met haer krachten <rhyme label="b" type="m" corresp="#s2:l2">stijght</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Dus kan 't gheloof gaen <rhyme label="c" type="m">heen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En stijgen van <rhyme label="c" type="m" corresp="#s2:l5">benÃ«en</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Te sien die Glory-rijcke <rhyme label="d" type="m">prael</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Die heerlijck en <rhyme label="e" type="m">schoon</rhyme></l>
        <l id="s2:l9" met="3" type="+-">Omcingelt Godts <rhyme label="e" type="m" corresp="#s2:l8">troon</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">In 's Hemels <rhyme label="d" type="m" corresp="#s2:l7">Zael</rhyme>.</l>
      </lg>
    </lg>
