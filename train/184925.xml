<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184925</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Als de heer verkeren wou</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">'t IS goedt hebt ghy met uwe <rhyme label="a" type="m">mondt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De Wereldt gaen <rhyme label="b" type="f">versaken</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">'t Is veel (is 't uyt 'sherten <rhyme label="a" type="m" corresp="#s1:l1">grondt</rhyme>)</l>
        <l id="s1:l4" met="4" type="-+">Dat ghy met Godt een vast <rhyme label="a" type="m" corresp="#s1:l1">verbondt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van liefd' en trouw ginckt <rhyme label="b" type="f" corresp="#s1:l2">maken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer meer is 't als ghy in den <rhyme label="a" type="m">strijd</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Den Vyandt kunt <rhyme label="b" type="f">verwinnen</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">En dan 's 't genoegh: wanneer ghy <rhyme label="a" type="m" corresp="#s2:l1">zijt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Geweest hier besich al u <rhyme label="a" type="m" corresp="#s2:l1">tijdt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Om Godt op hooghst te <rhyme label="b" type="f" corresp="#s2:l2">minnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'t Is weynigh pijn te nemen <rhyme label="a" type="m">voor</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Noyt quaedt te sullen <rhyme label="b" type="f">hand'le</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Maer swaerder is 't, 't vlees geen <rhyme label="a" type="m" corresp="#s3:l1">gehoor</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Te geven en noch swaerder 't <rhyme label="a" type="m" corresp="#s3:l1">spoor</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ons heylandts na te <rhyme label="b" type="f" corresp="#s3:l2">wand'len</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'t Is in beloften licht te <rhyme label="a" type="m">gaen</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Maer och eylaes! 't <rhyme label="b" type="f">volbringen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">(Daer op'et al sal komen <rhyme label="a" type="m" corresp="#s4:l1">aen</rhyme>)</l>
        <l id="s4:l4" met="4" type="-+">En is soo licht'lijck niet <rhyme label="a" type="m" corresp="#s4:l1">gedaen</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Maer eyst vry groote <rhyme label="b" type="f" corresp="#s4:l2">dingen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wat doch maer een gevolgh van <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ia sulcken goede <rhyme label="b" type="f">wercken</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En sulck een sacht gedwee <rhyme label="a" type="m" corresp="#s5:l1">gemoedt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat elck daer uyt in <rhyme label="a" type="m" corresp="#s5:l1">overvloedt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Uw' liefd' tot Godt kan <rhyme label="b" type="f" corresp="#s5:l2">mercken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Indien ghy wist wat nut hier <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dees Godts-dienst waer te <rhyme label="b" type="f">lesen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Soo meen ick soud' uw' hert en <rhyme label="a" type="m" corresp="#s6:l1">sin</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Tot Godt en goedt met meerder <rhyme label="a" type="m" corresp="#s6:l1">min</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ontsteecken als voor <rhyme label="b" type="f" corresp="#s6:l2">desen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nu is 'er 't nut schoon't niet soo 't <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En schijnt in onse <rhyme label="b" type="f">oogen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Want Godts beloften sijn <rhyme label="a" type="m" corresp="#s7:l1">gewis</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En al 't geen hy belooft heeft, <rhyme label="a" type="m" corresp="#s7:l1">is</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Van wel-doen en <rhyme label="b" type="f" corresp="#s7:l2">verhoogen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel aen schickt u soo dat ghy <rhyme label="a" type="m">meught</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van Godt verheven <rhyme label="b" type="f">werden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Sijt daeghlijcks neerstigh in de <rhyme label="a" type="m" corresp="#s8:l1">deught</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En schoon 't voor 't vlees viel <rhyme label="a" type="m" corresp="#s8:l1">ongenueght</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Wilt nochtans staegh <rhyme label="b" type="f" corresp="#s8:l2">volherden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Een-voudigh zijt in uw' <rhyme label="a" type="m">gewaet</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Schoon m'n u daerom <rhyme label="b" type="f">bespotten</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Veracht de pracht en hooge <rhyme label="a" type="m" corresp="#s9:l1">staet</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Want grootsheyt pracht en <rhyme label="a" type="m" corresp="#s9:l1">overdaedt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Kentekens zijn der <rhyme label="b" type="f" corresp="#s9:l2">sotten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Treckt gramschap uyt, weer <rhyme label="a" type="m">ongedult</rhyme>:</l>
        <l id="s10:l2" met="3" type="-+">Wilt u sachtmoedigh <rhyme label="b" type="f">toonen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">In 't kort zijt met goe-ze'en <rhyme label="a" type="m" corresp="#s10:l1">vervult</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En laet geen onreyn door uw' <rhyme label="a" type="m" corresp="#s10:l1">schuldt</rhyme></l>
        <l id="s10:l5" met="3" type="-+">U Ziele oyt <rhyme label="b" type="f" corresp="#s10:l2">bewoonen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En soeckt Godts-boeck voort door en <rhyme label="a" type="m">door</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Wat u staet meer te <rhyme label="b" type="f">plegen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dat sal't u alles stellen <rhyme label="a" type="m" corresp="#s11:l1">voor</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Volght maer alleen ons Heylandt <rhyme label="a" type="m" corresp="#s11:l1">spoor</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Soo gady wisse <rhyme label="b" type="f" corresp="#s11:l2">wegen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
