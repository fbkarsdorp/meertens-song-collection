    <location>
      <orginal-name>de rijp</orginal-name>
      <standard-name>De Rijp, The Netherlands</standard-name>
      <coordinates>
        <lon>52.5548999</lon>
        <lat>4.8440884</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Wenn mein Stündlein vorhanden ist</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Al die lief hebben ‘t eenigh <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En nae waerdy aen <rhyme label="b" type="f">cleven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die toone dat in reyn <rhyme label="a" type="m" corresp="#s1:l1">ootmoed</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om ‘t goed sijn eer te <rhyme label="b" type="f" corresp="#s1:l2">geven</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Bloot sonder selfs te nemen <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Wilt vierigh tot den Heere <rhyme label="c" type="m" corresp="#s1:l5">gaen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Verschijnt danck-baer met <rhyme label="b" type="f" corresp="#s1:l2">beven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ons Godt is almachtigh en <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De wijsheydt sonder <rhyme label="b" type="f">dolen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die altijt helpt al in den <rhyme label="a" type="m" corresp="#s2:l1">noot</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Alst hem maer is <rhyme label="b" type="f" corresp="#s2:l2">bevolen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Hy is de liefde die ‘t al <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Voor wien geen dinck verborgen <rhyme label="c" type="m" corresp="#s2:l5">schiet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hoe heymelijck <rhyme label="b" type="f" corresp="#s2:l2">verholen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Toont dan, o Christen menschel <rhyme label="a" type="m">al</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">V danck, u eer, u <rhyme label="b" type="f">trouwe</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Wijckt gints, noch weer, door geen <rhyme label="a" type="m" corresp="#s3:l1">toeval</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">In geenderley <rhyme label="b" type="f" corresp="#s3:l2">benouwen</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Alleen weet Godt hoe nae, hoe <rhyme label="c" type="m">veer</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Mistrout noch twijfelt <rhyme label="c" type="m" corresp="#s3:l5">nimmermeer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ghy sult wonder <rhyme label="b" type="f" corresp="#s3:l2">aenschouwen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy cond’ God doch niet liever <rhyme label="a" type="m">doen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dan voor die liefde <rhyme label="b" type="f">kennen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">In dese wegh wilt vierich <rhyme label="a" type="m" corresp="#s4:l1">spoen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">V hert tot hem waerts <rhyme label="b" type="f" corresp="#s4:l2">wennen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dit is recht danckbaer wesen <rhyme label="c" type="m">reyn</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Godt al u wech bevelen <rhyme label="c" type="m" corresp="#s4:l5">pleyn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Weyt in dees groene <rhyme label="b" type="f" corresp="#s4:l2">vennen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Aenschout Gods wonder wijs <rhyme label="a" type="m">beleyt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sijn vaderlijck <rhyme label="b" type="f">nature</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">In als, voor Ziel, en lijf <rhyme label="a" type="m" corresp="#s5:l1">bereyt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Hy ons uyt liefden <rhyme label="b" type="f" corresp="#s5:l2">pure</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">In ‘t leven, en in ‘t sterven <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Op datmen doch be-erven <rhyme label="c" type="m" corresp="#s5:l5">sal</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">‘t Leven, na stervens <rhyme label="b" type="f" corresp="#s5:l2">ure</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wat hebben wy getuygen <rhyme label="a" type="m">al</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Aen Hemel en op <rhyme label="b" type="f">aerden</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Die Son seer schoon verlicht dit <rhyme label="a" type="m" corresp="#s6:l1">dal</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Tot lof van dees <rhyme label="b" type="f" corresp="#s6:l2">vermaerden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">De aerde spruyt // met menigh <rhyme label="c" type="m">cruyt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Cooren, vruchten, het wijst al <rhyme label="c" type="m" corresp="#s6:l5">uyt</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Sijn Liefde die hy niet <rhyme label="b" type="f" corresp="#s6:l2">spaerden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Voor al, in ‘t schencken van sijn <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Daer blijckt sijn groote <rhyme label="b" type="f">minne</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die hy ons gaf tot een <rhyme label="a" type="m" corresp="#s7:l1">patroon</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Om ons te drucken <rhyme label="b" type="f" corresp="#s7:l2">inne</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">Hoe wy moeten leven <rhyme label="c" type="m">perfeckt</rhyme></l>
        <l id="s7:l6" met="4" type="-+">In sijn voet-stappen <rhyme label="c" type="m" corresp="#s7:l5">onbevleckt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dit is een groot <rhyme label="b" type="f" corresp="#s7:l2">gewinne</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dees sterf voor ons den bitt’ren <rhyme label="a" type="m">doot</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Om ons daer door te <rhyme label="b" type="f">vryden</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Van onse schulden over <rhyme label="a" type="m" corresp="#s8:l1">groot</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Om eeuwigh te <rhyme label="b" type="f" corresp="#s8:l2">verblyden</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Heeft de Vader uyt Liefden <rhyme label="c" type="m">aert</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Sijn Soon voor ons dan niet <rhyme label="c" type="m" corresp="#s8:l5">gespaert</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Maer liet hem so swaer <rhyme label="b" type="f" corresp="#s8:l2">lijden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hoe soudt hy dan ons geven <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Met dees al wat is <rhyme label="b" type="f">noodigh</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Die ‘t meeste gaf, het minste <rhyme label="a" type="m" corresp="#s9:l1">siet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Sal hy oock geven <rhyme label="b" type="f" corresp="#s9:l2">spoedigh</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Ia al wat wy behoeden <rhyme label="c" type="m">hier</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Daer over heeft Godt sijn <rhyme label="c" type="m" corresp="#s9:l5">bestier</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En hier nae <rhyme label="b" type="f" corresp="#s9:l2">overvloedigh</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Als wy hier door niet sijn <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Door weder Liefde <rhyme label="b" type="f">schoone</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Te dancken Godts <rhyme label="a" type="m" corresp="#s10:l1">majesteyt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Die daer sit in den <rhyme label="b" type="f" corresp="#s10:l2">troone</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Met sijnen Soon ter <rhyme label="c" type="m">rechterhant</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Dan is verduystert ons <rhyme label="c" type="m" corresp="#s10:l5">verstant</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Schandt sal dan sijn ons <rhyme label="b" type="f" corresp="#s10:l2">loone</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ick bidt u alle <rhyme label="a" type="m">vriendelijck</rhyme>:</l>
        <l id="s11:l2" met="3" type="-+">Wijckt niet uyt geloofs <rhyme label="b" type="f">paden</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Betrout Godts genaed <rhyme label="a" type="m" corresp="#s11:l1">over-rijck</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Die alleen can <rhyme label="b" type="f" corresp="#s11:l2">versaden</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Soeckt het doch niet in <rhyme label="c" type="m">creatuur</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Maer in Godts suyver Liefden <rhyme label="c" type="m" corresp="#s11:l5">puur</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Want hy is vol <rhyme label="b" type="f" corresp="#s11:l2">weldaden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
