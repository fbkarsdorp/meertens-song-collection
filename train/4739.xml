  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">DE deugd <rhyme label="a" type="m">bestaet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Als in een <rhyme label="a" type="m" corresp="#s1:l1">middel-maet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Te weder-zy met <rhyme label="a" type="m" corresp="#s1:l1">quaed</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Bezet van <rhyme label="b" type="f">zon-den</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">De waerheyd <rhyme label="c" type="m">mee</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Op een gelijke <rhyme label="c" type="m" corresp="#s1:l5">stee</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Werd tusschen valschen <rhyme label="c" type="m" corresp="#s1:l5">twee</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Altijd <rhyme label="b" type="f" corresp="#s1:l4">gevon-den</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Hier van zijn tot <rhyme label="b" type="f" corresp="#s1:l4">oorkon-den</rhyme></l>
        <l id="s1:l10" met="1" type="-+">De <rhyme label="b" type="f" corresp="#s1:l4">vonden</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Die he’en al-om van <rhyme label="d" type="m">nieus-gedicht</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Vernielen ’t oude <rhyme label="d" type="m" corresp="#s1:l11">Sticht</rhyme></l>
        <l id="s1:l13" met="3" type="-+">’t Welk ons het waer <rhyme label="d" type="m" corresp="#s1:l11">bericht</rhyme></l>
        <l id="s1:l14" met="3" type="-+">Van d’eerste Christen <rhyme label="e" type="m">deugd</rhyme></l>
        <l id="s1:l15" met="3" type="-+">Wel t’onzer Vad’ren <rhyme label="e" type="m" corresp="#s1:l14">vreugd</rhyme></l>
        <l id="s1:l16" met="2" type="-+">Had laten <rhyme label="b" type="f" corresp="#s1:l4">gron-den</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Neemt hier nu <rhyme label="a" type="m">een</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Exempel, van het <rhyme label="a" type="m" corresp="#s2:l1">geen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ik u luy in ’t <rhyme label="a" type="m" corresp="#s2:l1">gemeen</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Terstond <rhyme label="b" type="f">verklaerde</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">De zulk’ <rhyme label="c" type="m">oorkond</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Dat Christen hand, noch <rhyme label="c" type="m" corresp="#s2:l5">mond</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Noch hart t’ egeender <rhyme label="c" type="m" corresp="#s2:l5">stond</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Iet quaeds en <rhyme label="b" type="f" corresp="#s2:l4">baerde</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">De zulk weer, tot <rhyme label="b" type="f" corresp="#s2:l4">onwaerde</rhyme></l>
        <l id="s2:l10" met="1" type="-+">Der <rhyme label="b" type="f" corresp="#s2:l4">menschen</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Haer wenschen, handel, <rhyme label="d" type="m">woord</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Met all’s wat daer toe <rhyme label="d" type="m" corresp="#s2:l11">hoordt</rhyme>,</l>
        <l id="s2:l13" met="3" type="-+">Door smet van hun <rhyme label="d" type="m" corresp="#s2:l11">geboort</rhyme></l>
        <l id="s2:l14" met="3" type="-+">Gelooft te zijn mis <rhyme label="e" type="m">daed</rhyme>:</l>
        <l id="s2:l15" met="3" type="-+">Hoewel’t ’t verkoren <rhyme label="e" type="m" corresp="#s2:l14">zaed</rhyme></l>
        <l id="s2:l16" met="2" type="-+">Noyt en <rhyme label="b" type="f" corresp="#s2:l4">bezwaerde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Maer dit, <rhyme label="a" type="m">helaes</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Werd alle bey <rhyme label="a" type="m" corresp="#s3:l1">geraes</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van doling dul en <rhyme label="a" type="m" corresp="#s3:l1">dwaes</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Te recht <rhyme label="b" type="f">bevonden</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Des ons de <rhyme label="c" type="m">wet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Des Heren <rhyme label="c" type="m" corresp="#s3:l5">onbesmet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Te midde-wegen <rhyme label="c" type="m" corresp="#s3:l5">zet</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Het les der <rhyme label="b" type="f" corresp="#s3:l4">zonden</rhyme>.</l>
        <l id="s3:l9" met="3" type="-+">Zoo dat d’oprechte <rhyme label="b" type="f" corresp="#s3:l4">monden</rhyme></l>
        <l id="s3:l10" met="1" type="-+">Der geenen// die <rhyme label="b" type="f" corresp="#s3:l4">meenen</rhyme>//</l>
        <l id="s3:l11" met="4" type="+-">’t Rechte pas te <rhyme label="d" type="m">treen</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Zich moeten tusschen <rhyme label="d" type="m" corresp="#s3:l11">tween</rhyme></l>
        <l id="s3:l13" met="3" type="-+">Vervougen, nae de <rhyme label="d" type="m" corresp="#s3:l11">reen</rhyme></l>
        <l id="s3:l14" met="3" type="-+">Van ’t Katholijk <rhyme label="e" type="m">verbond</rhyme>:</l>
        <l id="s3:l15" met="3" type="-+">En kennen, deugd en <rhyme label="e" type="m" corresp="#s3:l14">zond</rhyme></l>
        <l id="s3:l16" met="2" type="-+">Tot allen <rhyme label="b" type="f" corresp="#s3:l4">stonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Het blijkt wel <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Den geenen, die <rhyme label="a" type="m" corresp="#s4:l1">gegaen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Sijn van de rechte <rhyme label="a" type="m" corresp="#s4:l1">baen</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Die z’eerst <rhyme label="b" type="f">betraden</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Gelijkmen <rhyme label="c" type="m">leest</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van Davids zachten <rhyme label="c" type="m" corresp="#s4:l5">geest</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En Petrus; die <rhyme label="c" type="m" corresp="#s4:l5">geweest</rhyme></l>
        <l id="s4:l8" met="2" type="-+">In Goods <rhyme label="b" type="f" corresp="#s4:l4">genade</rhyme>;</l>
        <l id="s4:l9" met="3" type="-+">De zelve, door <rhyme label="b" type="f" corresp="#s4:l4">misdaden</rhyme></l>
        <l id="s4:l10" met="1" type="-+">Verzworen// <rhyme label="b" type="f" corresp="#s4:l4">verloren</rhyme>.</l>
        <l id="s4:l11" met="4" type="+-">Hoewel hen ’t <rhyme label="d" type="m">gezucht</rhyme></l>
        <l id="s4:l12" met="3" type="-+">Verkrijgen weer de <rhyme label="d" type="m" corresp="#s4:l11">vrucht</rhyme></l>
        <l id="s4:l13" met="3" type="-+">Dee van de eerste <rhyme label="d" type="m" corresp="#s4:l11">tucht</rhyme>;</l>
        <l id="s4:l14" met="3" type="-+">Iae zelfs de zielen, <rhyme label="e" type="m">met</rhyme></l>
        <l id="s4:l15" met="3" type="-+">Een schat van deugden, <rhyme label="e" type="m" corresp="#s4:l14">bet</rhyme></l>
        <l id="s4:l16" met="2" type="-+">Als voren, <rhyme label="b" type="f" corresp="#s4:l4">laden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Dat alle <rhyme label="a" type="m">vlees</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dan tusschen hoop en <rhyme label="a" type="m" corresp="#s5:l1">vrees</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Haer zael’cheyd, naer ik <rhyme label="a" type="m" corresp="#s5:l1">lees</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">By Paulum, <rhyme label="b" type="f">werke</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">En weer, nae <rhyme label="c" type="m">raed</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Van Petrus, vroug en <rhyme label="c" type="m" corresp="#s5:l5">laet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Met deugd en <rhyme label="c" type="m" corresp="#s5:l5">caritaet</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Haer roup <rhyme label="b" type="f" corresp="#s5:l4">versterke</rhyme>.</l>
        <l id="s5:l9" met="3" type="-+">Dit is het les der <rhyme label="b" type="f" corresp="#s5:l4">Kerken</rhyme>:</l>
        <l id="s5:l10" met="1" type="-+">Verscheyde// van <rhyme label="b" type="f" corresp="#s5:l4">beyde</rhyme></l>
        <l id="s5:l11" met="4" type="+-">d’Utersten, daer <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Die in dit aerdse <rhyme label="d" type="m" corresp="#s5:l11">dal</rhyme></l>
        <l id="s5:l13" met="3" type="-+">Bevryd wil sijn van <rhyme label="d" type="m" corresp="#s5:l11">val</rhyme>,</l>
        <l id="s5:l14" met="3" type="-+">En zekerlijkken <rhyme label="e" type="m">gaen</rhyme></l>
        <l id="s5:l15" met="3" type="-+">d’Oprechte middel <rhyme label="e" type="m" corresp="#s5:l14">baen</rhyme>,</l>
        <l id="s5:l16" met="2" type="-+">Wel moet op <rhyme label="b" type="f" corresp="#s5:l4">merken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
