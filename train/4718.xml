  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IK ben, ik ben de <rhyme label="a" type="f">gene</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Die door <rhyme label="b" type="m">genaed</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Vergiffenis <rhyme label="a" type="f" corresp="#s1:l1">verlene</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Van uw’ <rhyme label="b" type="m" corresp="#s1:l2">misdaed</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En dat tot lof en <rhyme label="a" type="f">glory</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Mijns <rhyme label="b" type="m">Majesteyts</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">End’ eewige <rhyme label="a" type="f" corresp="#s2:l1">memory</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Uws <rhyme label="b" type="m" corresp="#s2:l2">zaligheyds</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dank hebb’t onnozel <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Van Christus <rhyme label="b" type="m">kruis</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">’t Welk van de dood <rhyme label="a" type="f" corresp="#s3:l1">bevryde</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Vws Vaders <rhyme label="b" type="m" corresp="#s3:l2">huys</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Schrijf dan den Erm uws <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s4:l2" met="2" type="-+">De vrede <rhyme label="b" type="m">toe</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Daer mee uw’ kwam <rhyme label="a" type="f" corresp="#s4:l1">verweren</rhyme></l>
        <l id="s4:l4" met="2" type="-+">De Iesse <rhyme label="b" type="m" corresp="#s4:l2">Roe</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De waerheyd van zijn <rhyme label="a" type="f">woorden</rhyme></l>
        <l id="s5:l2" met="2" type="-+">U ’t leven <rhyme label="b" type="m">gaf</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Zijn ingestelde <rhyme label="a" type="f" corresp="#s5:l1">oorde</rhyme></l>
        <l id="s5:l4" met="2" type="-+">U wischten <rhyme label="b" type="m" corresp="#s5:l2">af</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maekt dan uw’ ziel en <rhyme label="a" type="f">zinnen</rhyme></l>
        <l id="s6:l2" met="2" type="-+">My wel <rhyme label="b" type="m">bereed</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Deur hoop, gelove, minn’ <rhyme label="a" type="f" corresp="#s6:l1">en</rhyme></l>
        <l id="s6:l4" met="2" type="-+"><rhyme label="b" type="m" corresp="#s6:l2">Boetvaerdigheyd</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dan zal ik u <rhyme label="a" type="f">ingeven</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Nae ’t <rhyme label="b" type="m">erf-patroon</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Mijns zoons, end’ ook doen <rhyme label="a" type="f" corresp="#s7:l1">leven</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Mijn graty <rhyme label="b" type="m" corresp="#s7:l2">schoon</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O Heer! doed nae uw’ <rhyme label="a" type="f">woorden</rhyme>.</l>
        <l id="s8:l2" met="2" type="-+">Maer ’k bidd’ u, <rhyme label="b" type="m">dat</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Ghy met uw’ minne <rhyme label="a" type="f" corresp="#s8:l1">koorden</rhyme></l>
        <l id="s8:l4" met="2" type="-+">My trekt, en <rhyme label="b" type="m" corresp="#s8:l2">vat</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
