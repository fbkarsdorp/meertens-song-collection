  <author>Joannes Six van Chandelier</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Heer, bestraf de <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Door u, in my <rhyme label="a" type="f" corresp="#s1:l1">bevonden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Niet met een gram <rhyme label="b" type="m">gemoed</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ik zou wel gaarne <rhyme label="c" type="f">lyden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Maar wil my niet <rhyme label="c" type="f" corresp="#s1:l4">kastyden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In uwen heeten <rhyme label="b" type="m" corresp="#s1:l3">gloed</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zy, Heere, my <rhyme label="a" type="f">genaadig</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Want ik verswak <rhyme label="a" type="f" corresp="#s2:l1">gestaadig</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Myn kracht werdt my <rhyme label="b" type="m">ontvoert</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Geneesme van myn <rhyme label="c" type="f">pynen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Want, Heer, myn beendren <rhyme label="c" type="f" corresp="#s2:l4">quynen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Van angst, en schrik, <rhyme label="b" type="m" corresp="#s2:l3">beroert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Myn ziele self <rhyme label="a" type="f">doorbeeten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van 't knaagende <rhyme label="a" type="f" corresp="#s3:l1">geweeten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Is dies ook seer <rhyme label="b" type="m">verschrikt</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">En gy, o Heer, hoe <rhyme label="c" type="f">lange</rhyme>?</l>
        <l id="s3:l5" met="3" type="-+">Hoe maaktge 't my zo <rhyme label="c" type="f" corresp="#s3:l4">bange</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Eer datge my <rhyme label="b" type="m" corresp="#s3:l3">verquikt</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Och, Heere, keer weer <rhyme label="a" type="f">vaardig</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Al is 't myn ziel niet <rhyme label="a" type="f" corresp="#s4:l1">waardig</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Zo ruk haar uyt den <rhyme label="b" type="m">dood</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Behou my, uit <rhyme label="c" type="f">genaade</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dan roem ik, vry van 't <rhyme label="c" type="f" corresp="#s4:l4">quaade</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Uw gunst, die ik <rhyme label="b" type="m" corresp="#s4:l3">genoot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Want niemand is zo <rhyme label="a" type="f">magtig</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat hy, noch uws <rhyme label="a" type="f" corresp="#s5:l1">gedachtig</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">U, in den dood, <rhyme label="b" type="m">vereer</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Wie, in het graf <rhyme label="c" type="f">bestooven</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Belydt, om u te <rhyme label="c" type="f" corresp="#s5:l4">looven</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ooit uw genaade <rhyme label="b" type="m" corresp="#s5:l3">meer</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ik suchtme moe in <rhyme label="a" type="f">klagten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Myn bed swemt, gansche <rhyme label="a" type="f" corresp="#s6:l1">nachten</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Van 't weenen, dat ik <rhyme label="b" type="m">doe</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Myn bedstee selve <rhyme label="c" type="f">raakte</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Van traanen, die ik <rhyme label="c" type="f" corresp="#s6:l4">maakte</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Doornat, tot onder <rhyme label="b" type="m" corresp="#s6:l3">toe</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Myn oog heeft my <rhyme label="a" type="f">begeeven</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Van dit verdrietig <rhyme label="a" type="f" corresp="#s7:l1">leeven</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Doorknaagt, veroudt, en <rhyme label="b" type="m">styf</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wyl alle myn <rhyme label="c" type="f">partyen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Sich, voor myn oog, <rhyme label="c" type="f" corresp="#s7:l4">verblyen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Om dat ik <rhyme label="b" type="m" corresp="#s7:l3">onderblyf</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Gy werkelyke <rhyme label="a" type="f">smeeden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van <rhyme label="a" type="f" corresp="#s8:l1">ongerechtigheeden</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Wykt alle van my <rhyme label="b" type="m">af</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Vermids de Heer myn <rhyme label="c" type="f">steenen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En stemme van myn <rhyme label="c" type="f" corresp="#s8:l4">weenen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Gehoor, en antwoord <rhyme label="b" type="m" corresp="#s8:l3">gaf</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Des Heeren ooren <rhyme label="a" type="f">hoorden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">De smeeking myner <rhyme label="a" type="f" corresp="#s9:l1">woorden</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Tot hem, om heil, <rhyme label="b" type="m">gedaan</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">De Heer neemt myn <rhyme label="c" type="f">gebeeden</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Om syn barmhartig <rhyme label="c" type="f" corresp="#s9:l4">heeden</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Altyd goedgunstig <rhyme label="b" type="m" corresp="#s9:l3">aan</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Myn vyanden al <rhyme label="a" type="f">t'saamen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die zullen dies sich <rhyme label="a" type="f" corresp="#s10:l1">schaamen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Elk, om het seerst, <rhyme label="b" type="m">verbaast</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Een oogblik zalse <rhyme label="c" type="f">leeren</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Beschaamt te rugge <rhyme label="c" type="f" corresp="#s10:l4">keeren</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En dat met grooten <rhyme label="b" type="m" corresp="#s10:l3">haaft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
