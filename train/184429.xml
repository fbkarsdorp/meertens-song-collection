  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LIevenden zielen word alles tot <rhyme label="a" type="m">lust</rhyme>.</l>
        <l id="s1:l2" met="2" type="+-">Doornige <rhyme label="b" type="f">steegen</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Kraakende <rhyme label="b" type="f" corresp="#s1:l2">weegen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Maaken hen dog in den loop niet <rhyme label="b" type="f" corresp="#s1:l2">verlegen</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Hen zyn de Palmen en Kroonen <rhyme label="a" type="m" corresp="#s1:l1">bewust</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Lievenden zielen word alles tot <rhyme label="a" type="m" corresp="#s1:l1">lust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Ov'rig bedenken is waarlyk niet <rhyme label="a" type="m">goed</rhyme>.</l>
        <l id="s2:l2" met="2" type="+-">Naar grond te <rhyme label="b" type="f">vraagen</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">Geloovig <rhyme label="b" type="f" corresp="#s2:l2">waagen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Maakt ons bekwaam om te doen en te <rhyme label="b" type="f" corresp="#s2:l2">draagen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">'t Geen nooit de Mensch anders draagt ofte <rhyme label="a" type="m" corresp="#s2:l1">doet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">'t Ov'rig bedenken is waarlyk niet <rhyme label="a" type="m" corresp="#s2:l1">goed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In ons inwendige is het zeer <rhyme label="a" type="m">goed</rhyme>.</l>
        <l id="s3:l2" met="2" type="+-">'t Kwaadste te <rhyme label="b" type="f">melden</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Smaaden en <rhyme label="b" type="f" corresp="#s3:l2">schelden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Waait slegts het Kaf van de vruchtbaare <rhyme label="b" type="f" corresp="#s3:l2">velden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dryft ons tot Jesus en sterkt onzen <rhyme label="a" type="m" corresp="#s3:l1">moed</rhyme>.</l>
        <l id="s3:l6" met="4" type="+-">In ons inwendige is het zeer <rhyme label="a" type="m" corresp="#s3:l1">goed</rhyme>.</l>
      </lg>
    </lg>
  </text>
