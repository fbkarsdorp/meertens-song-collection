  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wilt doch de Ooghen lieve <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Uwer Barmhertigheyt nu <rhyme label="b" type="m">slaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op haer (die nu tot uws naems <rhyme label="a" type="f" corresp="#s1:l1">eere</rhyme>)</l>
        <l id="s1:l4" met="4" type="-+">In ‘t Houwelijck te samen <rhyme label="b" type="m" corresp="#s1:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wiltse, o Godt, <rhyme label="a" type="f">ghebenedijen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Zeghenen met ghenaden <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat haer voornemen t’allen <rhyme label="a" type="f" corresp="#s2:l1">tijen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">In u recht mach gherichtet <rhyme label="b" type="m" corresp="#s2:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Uwe eer, Heer, alleyn te <rhyme label="a" type="f">soecken</rhyme></l>
        <l id="s3:l2" met="4" type="-+">En haerder zielen <rhyme label="b" type="m">zalicheyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Haer soo bewijsen als de <rhyme label="a" type="f" corresp="#s3:l1">kloecken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Tot loove uwer <rhyme label="b" type="m" corresp="#s3:l2">Majesteyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En als ‘t betaemt der heyl’ghen <rhyme label="a" type="f">nacy</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">D’echte oprechten <rhyme label="b" type="m">onbeswaert</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En voor des Vyandts qua <rhyme label="a" type="f" corresp="#s4:l1">temtacy</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Moghen bevrijt zijn en <rhyme label="b" type="m" corresp="#s4:l2">bewaert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Datse in al haer kruys en <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En noot die haer noch sal <rhyme label="b" type="m">aenstaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En hier ontmoet mopghen <rhyme label="a" type="f" corresp="#s5:l1">verblijden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Uwen Godlijcken troost <rhyme label="b" type="m" corresp="#s5:l2">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O Godt dit bidden wy te <rhyme label="a" type="f">samen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">U die woont in des Hemels <rhyme label="b" type="m">troon</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Laet dit doch Heere worden <rhyme label="a" type="f" corresp="#s6:l1">Amen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Door Iesum Christum uwen <rhyme label="b" type="m" corresp="#s6:l2">Soon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
