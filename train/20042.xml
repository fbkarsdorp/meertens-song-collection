    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE nijt, van spijt, haer Reusel <rhyme label="a" type="m">scheurt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Nu sy haer Keffers <rhyme label="b" type="f">tongen</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Siet so kort <rhyme label="b" type="f" corresp="#s1:l2">gedwongen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Stokebrande, <rhyme label="a" type="m" corresp="#s1:l1">treurt</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Siet hoe de <rhyme label="c" type="f">liefde</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hier twe zielen <rhyme label="d" type="m">bint</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Die gy met logens <rhyme label="c" type="f" corresp="#s1:l5">griefde</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Al u snoo <rhyme label="d" type="m" corresp="#s1:l6">bewint</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Vervlieght nu als de <rhyme label="d" type="m" corresp="#s1:l6">Windt</rhyme>.</l>
      </lg>
