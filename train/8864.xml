  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEER voormaels hebt ghy wel <rhyme label="a" type="m">verschoont</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Genaedich dijnen <rhyme label="b" type="f">Lande</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Den G'vangen Jacobs oock <rhyme label="a" type="m" corresp="#s1:l1">verthoont</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Verlossingh' wt haer <rhyme label="b" type="f" corresp="#s1:l2">Bande</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Ghy naemt wech al dijns Volcx <rhyme label="c" type="m">Misdaet</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Bedeckend' ooc haer sonden <rhyme label="c" type="m" corresp="#s1:l5">quaet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dijn Thoorne was ten <rhyme label="d" type="f">Ende</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">End' dy van dijnen Grim <rhyme label="e" type="m">gheweynt</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Com ons te helpen <rhyme label="e" type="m" corresp="#s1:l8">Onghescheynt</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">O HEER wt dees <rhyme label="d" type="f" corresp="#s1:l7">Elende</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Godt onse Heylandt, ons <rhyme label="a" type="m">verquick</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met Troost coemt ons te <rhyme label="b" type="f">baten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Van dijnen Thoorn (Heer) <rhyme label="a" type="m" corresp="#s2:l1">goedichlick</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Wilt oock als nu <rhyme label="b" type="f" corresp="#s2:l2">afflaten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Waerom wilt ghy in dese <rhyme label="c" type="m">Pijn</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Op ons so seer verthoorent <rhyme label="c" type="m" corresp="#s2:l5">zijn</rhyme>?</l>
        <l id="s2:l7" met="3" type="-+">En dijnen Grim <rhyme label="d" type="f">verheven</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Voort varen altijdt meer en <rhyme label="e" type="m">meer</rhyme>?</l>
        <l id="s2:l9" met="4" type="-+">Houdt op, wilt ons verquicken <rhyme label="e" type="m" corresp="#s2:l8">(Heer</rhyme>)</l>
        <l id="s2:l10" met="3" type="-+">En t'Leven by dy <rhyme label="d" type="f" corresp="#s2:l7">gheven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laet dijn Volck syn in dy <rhyme label="a" type="m">verblijdt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">HEER thoont ons dijn <rhyme label="b" type="f">ghenade</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Geeft ons dijn Heyl te deser <rhyme label="a" type="m" corresp="#s3:l1">Tijdt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Helpt ons van allen <rhyme label="b" type="f" corresp="#s3:l2">quade</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Och! dat ick sou met <rhyme label="c" type="m">Danckbaerheyt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Wat Godt de HEEre tot ons <rhyme label="c" type="m" corresp="#s3:l5">seydt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Noch hooren, End' hem <rhyme label="d" type="f">Eeren</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Want hy syn Volck end' Heyl'gen <rhyme label="e" type="m">daer</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Sal Vreed toe segghen, dat sy <rhyme label="e" type="m" corresp="#s3:l8">haer</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Tot dwaesheyt niet en <rhyme label="d" type="f" corresp="#s3:l7">keeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Doch is nae by, En coemt ter <rhyme label="a" type="m">Hant</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die Hulp en Troost des <rhyme label="b" type="f">HEEren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dien, die met Waerheyt t'Allen <rhyme label="a" type="m" corresp="#s4:l1">kant</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hem vreesen ende <rhyme label="b" type="f" corresp="#s4:l2">Eeren</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dat by ons in den Lande <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Die Eer syns Naems al omme <rhyme label="c" type="m" corresp="#s4:l5">Woon</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Dat Trouw en goetheyt <rhyme label="d" type="f">beyde</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Malcanderen Ontmoeten <rhyme label="e" type="m">soet</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">En dat haer kussen metter <rhyme label="e" type="m" corresp="#s4:l8">spoet</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Vreed' en <rhyme label="d" type="f" corresp="#s4:l7">gherechticheyde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dat Trouw op Aerden wasse <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En die <rhyme label="b" type="f">gherechtichede</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Van HEmel siet, dan sal de <rhyme label="a" type="m" corresp="#s5:l1">HEER</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Veel goets doen t'Aller <rhyme label="b" type="f" corresp="#s5:l2">stede</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Ons Landt syn Vruchten geven <rhyme label="c" type="m">met</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Voor hem sal gaen end' blijven <rhyme label="c" type="m" corresp="#s5:l5">Net</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Gherechticheyt vol <rhyme label="d" type="f">Eere</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Haer Voetstap op den Wech voort <rhyme label="e" type="m">aen</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Voor hem oock Heerlijck laten <rhyme label="e" type="m" corresp="#s5:l8">staen</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Ghelooft sy Godt de <rhyme label="d" type="f" corresp="#s5:l7">HEERE</rhyme>.</l>
      </lg>
    </lg>
  </text>
