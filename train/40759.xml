  <author>Gysbert Japicx</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEER! to jo, ijnne' heegste <rhyme label="a" type="f">heegtme</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Heer mijn God mijn <rhyme label="b" type="m">to-forlit</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Wjueckt mijn hert op, uwt druwcks <rhyme label="a" type="f" corresp="#s1:l1">leegtme</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dear 'k ijn djiepe' illind <rhyme label="b" type="m" corresp="#s1:l2">dol-sit</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Lit my naet beschamme <rhyme label="c" type="m">stean</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Az yen ijn sijn hoop <rhyme label="d" type="f">bedreagen</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Lit mijn fijnne' ae wille' <rhyme label="c" type="m" corresp="#s1:l5">ontfean</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Noch guwch-donssje mijnent <rhyme label="d" type="f" corresp="#s1:l6">weagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Al dy goe dy jo <rhyme label="a" type="f">forwachtje</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Sil nin schânn'-scheamts rea <rhyme label="b" type="m">oer-tjean</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Mar dy trouw'-leaz hânn'lje' oef <rhyme label="a" type="f" corresp="#s2:l1">plachtje</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Moat oon schânne-keack' <rhyme label="b" type="m" corresp="#s2:l2">tean-stean</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">HEER! meyts' my jon sill'ge <rhyme label="c" type="m">wey</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Kinbar om nea to <rhyme label="d" type="f">forbjuesterjen</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Leer my jon paed, klear az <rhyme label="c" type="m" corresp="#s2:l5">dey</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Lanz gean buwtte' om-weys <rhyme label="d" type="f" corresp="#s2:l6">fortjuesterjen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Leer my, lied my ijn jon <rhyme label="a" type="f">wierheyt</rhyme>.</l>
        <l id="s3:l2" met="4" type="+-">Mijn behâd, mijn goed, mijn <rhyme label="b" type="m">spoed</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Binne'Y, God, ijn nead in <rhyme label="a" type="f" corresp="#s3:l1">swierheyt</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Toafje' ick jon holp', hilde' in <rhyme label="b" type="m" corresp="#s3:l2">hoed</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Tinsse', HEER, jon <rhyme label="c" type="m">barmhertigheyt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Great, fen âdz, ja great oer' <rhyme label="d" type="f">miete</rhyme></l>
        <l id="s3:l7" met="4" type="+-">In oon jon goertiernheyt <rhyme label="c" type="m" corresp="#s3:l5">beyd'</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Want dy binne' on-eyngje' yn <rhyme label="d" type="f" corresp="#s3:l6">swiete</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Huwgje naet mijn domm' jeugds <rhyme label="a" type="f">suwne</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Nog' mijn oer-tredz gruwle <rhyme label="b" type="m">meer</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Tinck m'ijn jon goertiern'e <rhyme label="a" type="f" corresp="#s4:l1">herts-gruwne</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Om jon goeheyts wille' ô <rhyme label="b" type="m" corresp="#s4:l2">HEER'</rhyme>!</l>
        <l id="s4:l5" met="4" type="+-">d'HEER iz goe, rjuecht, inckel, <rhyme label="c" type="m">sljuecht</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Suwners sil hy <rhyme label="d" type="f">onderrjuechtjé</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Seftmoed'ge lied't hy yn 't <rhyme label="c" type="m" corresp="#s4:l5">rjuecht</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Seftmoed'ge sil Hy 't paed <rhyme label="d" type="f" corresp="#s4:l6">sljuechtje</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wierheyt in goertiernheyt <rhyme label="a" type="f">binne</rhyme></l>
        <l id="s5:l2" met="4" type="+-">All' Goads paden voor dy <rhyme label="b" type="m">ljue</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Dy sijn wird bewearje', in <rhyme label="a" type="f" corresp="#s5:l1">minne</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Sijn tjuechnisse' yn heyl'ge <rhyme label="b" type="m" corresp="#s5:l2">njue</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Om jon Namme wille' ô <rhyme label="c" type="m">HEER</rhyme>!</l>
        <l id="s5:l6" met="4" type="+-">Och! forjou my, uwt <rhyme label="d" type="f">genade</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Mijn on-g'rjuechtheyts suwn' <rhyme label="c" type="m" corresp="#s5:l5">quea-seer</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Dy great, oer-great, my <rhyme label="d" type="f" corresp="#s5:l6">oer-laede</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wa 's hy dy, mey bernne' <rhyme label="a" type="f">ontsjochtme</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Rjuecht ontsjoghlijck d'HEER <rhyme label="b" type="m">ontsjocht</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dy wirt wijzge', ijn sill'g'e <rhyme label="a" type="f" corresp="#s6:l1">herts-tochtme</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">d'Wey om tsiezjen, <rhyme label="b" type="m" corresp="#s6:l2">wol-betocht</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Sijn siel fil fornachtje' ijn 't <rhyme label="c" type="m">goe</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">O sijn ney-team sil <rhyme label="d" type="f">op-luwcke</rhyme>:</l>
        <l id="s6:l7" met="4" type="+-">In 't Lân dat him God mijld <rhyme label="c" type="m" corresp="#s6:l5">joe</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Ervje' eyn-yerdje' in sillig <rhyme label="d" type="f" corresp="#s6:l6">bruwcke</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Goads forborgenheyt <rhyme label="a" type="f">djiep-gruwnigh</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Leyt sijn hoscke' ontsjogh-bern <rhyme label="b" type="m">bleat</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Eack iz sijn <rhyme label="a" type="f" corresp="#s7:l1">forbuwne'oer-buwnigh</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">To jerm' witt'nisse' oon-waechs <rhyme label="b" type="m" corresp="#s7:l2">great</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Mijn eag gljuerckjet op mijn <rhyme label="c" type="m">God</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Op mijn HEER fen oere <rhyme label="d" type="f">t'oere</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Hy tjocht mijn schonck uwt it <rhyme label="c" type="m" corresp="#s7:l5">not</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Dear mijn fijnnen my mey <rhyme label="d" type="f" corresp="#s7:l6">loere</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Loayts genadig, in uwt <rhyme label="a" type="f">minne</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Op my mey jon frjuen'lijck <rhyme label="b" type="m">eag</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Want illindig, in <rhyme label="a" type="f" corresp="#s8:l1">allinne</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Swomje' ick djiep ijn pleag op <rhyme label="b" type="m" corresp="#s8:l2">pleag</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">O dy nead! dy nead mijn <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Wijd oer-gappet, holp' m' uwt <rhyme label="d" type="f">neaden</rhyme>.</l>
        <l id="s8:l7" met="4" type="+-">Oon-sjea mijn eangst' moeyte' in <rhyme label="c" type="m" corresp="#s8:l5">smertt'</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Meyts' mijn suwn'-lest my <rhyme label="d" type="f" corresp="#s8:l6">ontleaden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">HEER! sjog oon ho wread mijn <rhyme label="a" type="f">fijnnen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Swolmje' ijn wreck-sjocht', grijmme' in <rhyme label="b" type="m">spijt</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">In ijn oon-tol; to mijn <rhyme label="a" type="f" corresp="#s9:l1">pijnnen</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Haetjes' my trog-pest'ge' ijn <rhyme label="b" type="m" corresp="#s9:l2">nijd</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Holp' redd' God! bewerre <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Holp' mijn siel, lit naet to <rhyme label="d" type="f">schânne</rhyme></l>
        <l id="s9:l7" met="4" type="+-">My wirdde', ick betrouwje' op <rhyme label="c" type="m" corresp="#s9:l5">dy</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">HEER! 'k bejouw my ijn jon <rhyme label="d" type="f" corresp="#s9:l6">hannen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Litt' rujecht-uwtte' yenfâde <rhyme label="a" type="f">fromheyt</rhyme></l>
        <l id="s10:l2" met="4" type="+-">My behoedje' ijn lit in <rhyme label="b" type="m">dwaen</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">'k Wachtfen jo mijn uwncks <rhyme label="a" type="f" corresp="#s10:l1">weerom-stoyt'</rhyme>.</l>
        <l id="s10:l4" met="4" type="+-">'k Wol 't j'ô God!, alheel <rhyme label="b" type="m" corresp="#s10:l2">op-jaen</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">O mijn God!, dy 'k my <rhyme label="c" type="m">befel</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Yn jon hoed' mijn libbens <rhyme label="d" type="f">deagen</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Forloffje jon <rhyme label="c" type="m" corresp="#s10:l5">Israël</rhyme></l>
        <l id="s10:l8" met="4" type="+-">Uwt all' sijn nead, eangst, in <rhyme label="d" type="f" corresp="#s10:l6">pleagen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
