    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NIet verre van Lier in <rhyme label="a" type="m">Brabant</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Emblecem, heeft den Heer <rhyme label="b" type="f">verkoren</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Voor Gommarus ons waerde <rhyme label="a" type="m" corresp="#s1:l1">Sant</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Want aldaer is, is hy <rhyme label="b" type="f" corresp="#s1:l2">geboren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sijn Ouders waren van <rhyme label="a" type="m">geslacht</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Edel, en Rijck van Landt en <rhyme label="b" type="f">Hoven</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">In sijn jeught, niet dan deughden <rhyme label="a" type="m" corresp="#s2:l1">acht</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Genegen seer om Godt te <rhyme label="b" type="f" corresp="#s2:l2">loven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Tegen sijn wil in Pipijns <rhyme label="a" type="m">Hof</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Van sijn Vader wort hy <rhyme label="b" type="f">gesonden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hier sprack yder sijn waerden <rhyme label="a" type="m" corresp="#s3:l1">Lof</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Vol van deughden wort hy <rhyme label="b" type="f" corresp="#s3:l2">gevonden</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Na Koninghs raet, hy trouwt een <rhyme label="a" type="m">Vrouw</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die goedt en deughdigh scheen te <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">s' Haest oorsaeck was van veele <rhyme label="a" type="m" corresp="#s4:l1">rouw</rhyme>;</l>
        <l id="s4:l4" met="4" type="-+">Doet yder schudden ende <rhyme label="b" type="f" corresp="#s4:l2">vreesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Na den Oorlogh reyst Sint <rhyme label="a" type="m">Gommaer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Voor Beesten acht sijn Vrouw de <rhyme label="b" type="f">Menschen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Beesten en gelt neemt sy van <rhyme label="a" type="m" corresp="#s5:l1">haer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Sy leefden heel na Sathans <rhyme label="b" type="f" corresp="#s5:l2">wenschen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Als hy t'huys komt heeft al <rhyme label="a" type="m">voldaen</rhyme>.</l>
        <l id="s6:l2" met="4" type="-+">Tegens haer seydt: Godt sal u <rhyme label="b" type="f">plagen</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Als hy na Roomen wilde <rhyme label="a" type="m" corresp="#s6:l1">gaen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Wonder geschiedt na korte <rhyme label="b" type="f" corresp="#s6:l2">dagen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Niet ver van Lier af-kapt een <rhyme label="a" type="m">Boom</rhyme>:</l>
        <l id="s7:l2" met="4" type="-+">Een Man heftigh begint te <rhyme label="b" type="f">kijven</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Gommarus spreeckt beleeft en <rhyme label="a" type="m" corresp="#s7:l1">vroom</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">De Boom sal wassen en <rhyme label="b" type="f" corresp="#s7:l2">beklijven</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die nacht hy waeckt, en bidt seer <rhyme label="a" type="m">veel</rhyme>;</l>
        <l id="s8:l2" met="4" type="-+">Boom stelt op sijn plaets met <rhyme label="b" type="f">betrouwen</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Wortels hy krijght, en wast <rhyme label="a" type="m" corresp="#s8:l1">geheel</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Als of hy noyt was af <rhyme label="b" type="f" corresp="#s8:l2">gehouwen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Een Engel, die nacht seyt: <rhyme label="a" type="m">alhier</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Gommaer moet ghy Godes Kerck <rhyme label="b" type="f">bouwen</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Die noch staet in de Stadt van <rhyme label="a" type="m" corresp="#s9:l1">Lier</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">In grooten eer wordt daer <rhyme label="b" type="f" corresp="#s9:l2">gehouwen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">In dit gebouw sijn Ziel <rhyme label="a" type="m">vermaeckt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Door bidden ende <rhyme label="b" type="f">mediteeren</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Sijn hart en geest na 't Hemels <rhyme label="a" type="m" corresp="#s10:l1">haeckt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Soeckt sijn Godt en Al, daer te <rhyme label="b" type="f" corresp="#s10:l2">eeren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Genegen was Gommarus <rhyme label="a" type="m">seer</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Te spijsen, en laven den <rhyme label="b" type="f">Armen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">De naeckten kleedt tot Godes <rhyme label="a" type="m" corresp="#s11:l1">eer</rhyme>;</l>
        <l id="s11:l4" met="4" type="-+">Den Weduw troost in hare <rhyme label="b" type="f" corresp="#s11:l2">karmen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Mayers in d'Ooghst van dorst <rhyme label="a" type="m">vergaen</rhyme>:</l>
        <l id="s12:l2" met="4" type="-+">Gommarus Vrouw om water <rhyme label="b" type="f">smeecken</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">'s Raest, en kijft, geen troost <rhyme label="a" type="m" corresp="#s12:l1">ontfaen</rhyme>:</l>
        <l id="s12:l4" met="4" type="-+">Hier is haer tyranny <rhyme label="b" type="f" corresp="#s12:l2">gebleecken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Sijn stock in d'Aerden steeckt <rhyme label="a" type="m">Gommaer</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Fonteyn daer vloeyt, soo sy <rhyme label="b" type="f">aenmercken</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">Yder Godt looft, en laeft hem <rhyme label="a" type="m" corresp="#s13:l1">daer</rhyme>.</l>
        <l id="s13:l4" met="4" type="-+">Fonteyn noch vloeyt voor Leeck en <rhyme label="b" type="f" corresp="#s13:l2">Klecken</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Sijn Vrou Godt straft met dorst seer <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Geen nat haer laeft, daer van moet <rhyme label="b" type="f">sterven</rhyme>;</l>
        <l id="s14:l3" met="4" type="-+">Gommaer bevrijdt haer van de <rhyme label="a" type="m" corresp="#s14:l1">doodt</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Dat haer ziel Gods hulp souw <rhyme label="b" type="f" corresp="#s14:l2">verwerven</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Sint Gommaer wordt sieck ende <rhyme label="a" type="m">teer</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Tot Emblecem hy sterft vol <rhyme label="b" type="f">deughden</rhyme></l>
        <l id="s15:l3" met="4" type="-+">d' Eng'len sijn ziel met grooten <rhyme label="a" type="m" corresp="#s15:l1">eer</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Brengen die tot d'Hemelsche <rhyme label="b" type="f" corresp="#s15:l2">vreughden</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Sijn Lijck, niet na sijn vrienden <rhyme label="a" type="m">wil</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">In 't Schip vaert sonder Seyl en <rhyme label="b" type="f">menschen</rhyme>:</l>
        <l id="s16:l3" met="4" type="-+">Voor sijne gebouw leyt het <rhyme label="a" type="m" corresp="#s16:l1">stil</rhyme>:</l>
        <l id="s16:l4" met="4" type="-+">Soo was Godts wil, en Engels <rhyme label="b" type="f" corresp="#s16:l2">wenschen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Begraven is met grooten <rhyme label="a" type="m">eer</rhyme>.</l>
        <l id="s17:l2" met="4" type="-+">Stomme geneest, en doof <rhyme label="b" type="f">gebooren</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Door sijn gebeent: en veele <rhyme label="a" type="m" corresp="#s17:l1">meer</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Mirak'len veel ick niet laet <rhyme label="b" type="f" corresp="#s17:l2">hooren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
