    <melody>Daar ik gisteravond kwam</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOort vriendekens <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ick schenck u een nieu <rhyme label="b" type="m">liedt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghy die daer zijt <rhyme label="a" type="f" corresp="#s1:l1">ghenesen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van dat eeuwigh <rhyme label="b" type="m" corresp="#s1:l2">verdriet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Leeft doch in sonden <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Want sy worden <rhyme label="c" type="f">begraven</rhyme></l>
        <l id="s1:l7" met="3" type="-+">In de doodt Christi <rhyme label="b" type="m" corresp="#s1:l2">siet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">door doopsel, alst <rhyme label="b" type="m" corresp="#s1:l2">gheschiedt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Soo ons Paulus <rhyme label="b" type="m" corresp="#s1:l2">bediedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghelijck als hem sijn <rhyme label="a" type="f">Vader</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Heeft vander doodt <rhyme label="b" type="m">verweckt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo moeten wy <rhyme label="a" type="f" corresp="#s2:l1">allegader</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Verrijsen oock <rhyme label="b" type="m" corresp="#s2:l2">correckt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Soo de Apostel <rhyme label="b" type="m" corresp="#s2:l2">spreckt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In een nieuw leven <rhyme label="c" type="f">wandelen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Het vleesch aen 'tkruys <rhyme label="b" type="m" corresp="#s2:l2">ghestreckt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Een yeghelijck hem <rhyme label="b" type="m" corresp="#s2:l2">breckt</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Van 'tquaedt dat in hem <rhyme label="b" type="m" corresp="#s2:l2">steckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Laet ons strijden als <rhyme label="a" type="f">kloecken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Tot allen tijden <rhyme label="b" type="m">snel</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De mondt Godts heeft <rhyme label="a" type="f" corresp="#s3:l1">ghesproken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">dat des menschen <rhyme label="b" type="m" corresp="#s3:l2">opstel</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Sijns hertsen, vatet <rhyme label="b" type="m" corresp="#s3:l2">wel</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Boos is, van sijn jonckheydt <rhyme label="c" type="f">op</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Och vrienden, hoe <rhyme label="b" type="m" corresp="#s3:l2">rebel</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Is ons natuers <rhyme label="b" type="m" corresp="#s3:l2">ghequel</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Och siet op Godts <rhyme label="b" type="m" corresp="#s3:l2">bevel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Daer moeten wy na <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Elck neme hem selven <rhyme label="b" type="m">waer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wy die ons hebben <rhyme label="a" type="f" corresp="#s4:l1">begheven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Te volghen Christum <rhyme label="b" type="m" corresp="#s4:l2">naer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Hy was sijnen Hemelschen <rhyme label="b" type="m" corresp="#s4:l2">Vaer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Gehoorsaem, tot der doodt des <rhyme label="c" type="f">kruys</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">dat blijckt in 't <rhyme label="b" type="m" corresp="#s4:l2">openbaer</rhyme></l>
        <l id="s4:l8" met="3" type="-+">dus laet ons <rhyme label="b" type="m" corresp="#s4:l2">allegaer</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Sien op de Schrift <rhyme label="b" type="m" corresp="#s4:l2">eenpaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy en sal ons niet <rhyme label="a" type="f">bedriegen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">daer is wel op te <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ons eyghen vernuft magh <rhyme label="a" type="f" corresp="#s5:l1">lieghen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wy en hebben soo vele niet <rhyme label="b" type="m" corresp="#s5:l2">aen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Wt ons selven, wilt dit <rhyme label="b" type="m" corresp="#s5:l2">verstaen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Als yet wat goedts te <rhyme label="c" type="f">dencken</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Na Paulus <rhyme label="b" type="m" corresp="#s5:l2">vermaen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">de Gheest Godts moet ons <rhyme label="b" type="m" corresp="#s5:l2">raen</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Oft wy missen de <rhyme label="b" type="m" corresp="#s5:l2">baen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dus laet ons wel <rhyme label="a" type="f">useren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">de Schrift op dit <rhyme label="b" type="m">termijn</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ende niet <rhyme label="a" type="f" corresp="#s6:l1">disputeren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Maer Godts navolghers <rhyme label="b" type="m" corresp="#s6:l2">zijn</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Als lieve kinderen <rhyme label="b" type="m" corresp="#s6:l2">fijn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Weest oprecht in der <rhyme label="c" type="f">liefden</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Doorsoeckt dat herte <rhyme label="b" type="m" corresp="#s6:l2">dijn</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Daer ghelt gheen schoonen <rhyme label="b" type="m" corresp="#s6:l2">schijn</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Alst binnen is <rhyme label="b" type="m" corresp="#s6:l2">fenijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Godt die heeft ons <rhyme label="a" type="f">geroepen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In vreden <rhyme label="b" type="m">algemeyn</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Eenen kamp te <rhyme label="a" type="f" corresp="#s7:l1">loopen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">door ghehoorsaemheydt <rhyme label="b" type="m" corresp="#s7:l2">pleyn</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Siet doch op Christum <rhyme label="b" type="m" corresp="#s7:l2">reyn</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">desen Herder wilt na <rhyme label="c" type="f">volgen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Sijn stemme hoort <rhyme label="b" type="m" corresp="#s7:l2">alleyn</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Sijn schaepkens kennen <rhyme label="b" type="m" corresp="#s7:l2">geyn</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Vreemde stemmen <rhyme label="b" type="m" corresp="#s7:l2">certeyn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Sijn schaepkens <rhyme label="a" type="f">uytverkoren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">die hebben sulcken <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Sijn stem altijdt te <rhyme label="a" type="f" corresp="#s8:l1">hooren</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Hoort wat de Schrift <rhyme label="b" type="m" corresp="#s8:l2">verklaert</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Godt heeft een volck <rhyme label="b" type="m" corresp="#s8:l2">vergaert</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">dat moet zijn inde werelt een <rhyme label="c" type="f">licht</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">daer toe heeft hyse <rhyme label="b" type="m" corresp="#s8:l2">gebaert</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Souden die dan <rhyme label="b" type="m" corresp="#s8:l2">eenpaert</rhyme></l>
        <l id="s8:l9" met="3" type="-+">Lichtveerdigh zijn, wat <rhyme label="b" type="m" corresp="#s8:l2">waert</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Oorlof mijn lieve <rhyme label="a" type="f">vrunden</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ick groet u, waer ghy <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Laet ons doch de <rhyme label="a" type="f" corresp="#s9:l1">sonden</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Schouwen, met grooter <rhyme label="b" type="m" corresp="#s9:l2">vlijt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Of de Heere quam <rhyme label="b" type="m" corresp="#s9:l2">subijt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Blijft in de vryheydt <rhyme label="c" type="f">staende</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Daer u mede heeft <rhyme label="b" type="m" corresp="#s9:l2">bevrijt</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Christus <rhyme label="b" type="m" corresp="#s9:l2">ghebenedijt</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Sijn stemme hoort <rhyme label="b" type="m" corresp="#s9:l2">altijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
