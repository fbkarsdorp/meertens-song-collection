  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAer heen Liefwaerde <rhyme label="a" type="m">Carileen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ycho, chay, siry, diry, <rhyme label="b" type="m">day</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Mach Coridon niet met u <rhyme label="a" type="m" corresp="#s1:l1">treen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Van siry, diry, dom, brom, <rhyme label="c" type="m">vrom</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Neen Coridon, den avont <rhyme label="a" type="m">daelt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ycho, chay, siry, diry, <rhyme label="b" type="m">day</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Het Vee dient in de Koy <rhyme label="a" type="m" corresp="#s2:l1">gehaelt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Van siry, diry, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ay Nimph, waer toe des ydle <rhyme label="a" type="m">sorgh</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Iicho, chay, siri, diri, <rhyme label="b" type="m">day</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Ick blijf voor al u schaepjes <rhyme label="a" type="m" corresp="#s3:l1">borgh</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Rust hier een weynigh soete <rhyme label="a" type="m">beck</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Iicho, chay, siri, diri, <rhyme label="b" type="m">day</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Op dat ick u mijn smert <rhyme label="a" type="m" corresp="#s4:l1">vertreck</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Van siri, diri, dom brom, <rhyme label="c" type="m">brom</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ick brant eylaes! van soete <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Iicho, chay, siri diri, <rhyme label="b" type="m">day</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">'k Weet van mijn smert eynd' noch <rhyme label="a" type="m" corresp="#s5:l1">begin</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Van siri diri, dom brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer wie is d' oorsaeck van u <rhyme label="a" type="m">pijn</rhyme>?</l>
        <l id="s6:l2" met="4" type="-+">Iicho, chay, siri diri <rhyme label="b" type="m">day</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Sy die my vraecht moet d' oorsaeck <rhyme label="a" type="m" corresp="#s6:l1">sijn</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Neen Coridon, dat gaet niet <rhyme label="a" type="m">wis</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Iicho, chai, siri, diri, <rhyme label="b" type="m">day</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Die antwoort selfs de oorsaeck <rhyme label="a" type="m" corresp="#s7:l1">is</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Alwaerde Nimph, u soet <rhyme label="a" type="m">gesicht</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Iicho, chay, siri, diri, <rhyme label="b" type="m">day</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Heeft in mijn borst dees brant <rhyme label="a" type="m" corresp="#s8:l1">gesticht</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">Van siri diri dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Neen, neen, u eygen ooghen <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Iicho, chay, siri, diri, <rhyme label="b" type="m">day</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">De oorsaeck van u <rhyme label="a" type="m" corresp="#s9:l1">Minnepijn</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Van siri, diri, dom brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Sacht Herder wie comt gins <rhyme label="a" type="m">gegaen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Iicho, chay, siri, diri, <rhyme label="b" type="m">day</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Verschuyl u, het is <rhyme label="a" type="m" corresp="#s10:l1">Florjaen</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">Van, siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
    </lg>
