<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184242</id>
    <date>
      <year-start>1798</year-start>
      <year-end>1798</year-end>
    </date>
    <tags/>
    <melody>De wereld is in rep en roer</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Beminlyk Meisje Lieve <rhyme label="a" type="m">Mie</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Gua dat ik u myn Liefde <rhyme label="a" type="m" corresp="#s1:l1">bie</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoor uw verliefde <rhyme label="b" type="m">Minnaar</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ik hoor u maar hoe zeer gy <rhyme label="a" type="m">vleid</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Nooit word myn hart door u <rhyme label="a" type="m" corresp="#s2:l1">verleid</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Nooit word gy <rhyme label="b" type="m">Overwinnaar</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Verleiden neen dat zoek ik <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Want Hy, die u zyn Trouw <rhyme label="a" type="m" corresp="#s3:l1">aanbied</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Is geen verleidend <rhyme label="b" type="m">Minnaar</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Toon my dan blyken van uw <rhyme label="a" type="m">Deugd</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Zoo zyt gy van myn poezie <rhyme label="a" type="m" corresp="#s4:l1">Jeugd</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Voorzeker <rhyme label="b" type="m">Overwinaar</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een Kusje slegts en 't zal <rhyme label="a" type="m">geschien</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Mag Ik op Trouw deez Ring u <rhyme label="a" type="m" corresp="#s5:l1">biÃªn</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Als een Getrouwe <rhyme label="b" type="m">Minnaar</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Neen Damon neen, een <rhyme label="a" type="m">oogenblik</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Was slegs genoeg myn Vriend en <rhyme label="a" type="m" corresp="#s6:l1">Ik</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Maakte u tot <rhyme label="b" type="m">Overwinnaar</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">War eist Gy dan myn <rhyme label="a" type="m">Rozenmond</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Eer my uw Roosje word <rhyme label="a" type="m" corresp="#s7:l1">gegond</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Van uw getrouwen <rhyme label="b" type="m">Minnaar</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dat eerst de vasten Hunwlyks <rhyme label="a" type="m">band</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ons saam vereend met hart en <rhyme label="a" type="m" corresp="#s8:l1">hand</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dan zyt Gy <rhyme label="b" type="m">Overwinnaar</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Neen Fire Mie dat kan niet <rhyme label="a" type="m">zyn</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Te naauwen Band baard altoos <rhyme label="a" type="m" corresp="#s9:l1">pyn</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Ik word dan geen <rhyme label="b" type="m">Overwinnaar</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Goed Damon goed, veragt my <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Het Huuwelyk is geen <rhyme label="a" type="m" corresp="#s10:l1">Slaverny</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Dan voor een ondeugd <rhyme label="b" type="m">Minnaar</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
