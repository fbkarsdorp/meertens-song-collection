  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy herder IsraÃ«ls, wilt <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die Ioseph van u <rhyme label="a" type="f" corresp="#s1:l1">uytvercoren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gelijck een cudde schapen <rhyme label="b" type="m">weyd't</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Bewijst aen ons u <rhyme label="b" type="m" corresp="#s1:l3">heerlijckheyt</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Die op de Cherubijnen <rhyme label="c" type="m">woont</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Daer ghy u schoonen glants <rhyme label="c" type="m" corresp="#s1:l5">vertoont</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Weckt eenmael op, Heer, voor de <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Van Ephraim u groot <rhyme label="a" type="f" corresp="#s2:l1">vermogen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Oock voor Manass' en <rhyme label="b" type="m">Benjamin</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Wilt tot ons keeren uwen <rhyme label="b" type="m" corresp="#s2:l3">sin</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Besoeckt u volck in dit <rhyme label="c" type="m">ellend'</rhyme></l>
        <l id="s2:l6" met="4" type="-+">En uwen bystant tot haer <rhyme label="c" type="m" corresp="#s2:l5">send't</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O goede heylant, brengt ons <rhyme label="a" type="f">weder</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die nu gaen dwalen op en <rhyme label="a" type="f" corresp="#s3:l1">neder</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Geeft dat den minnelijcken <rhyme label="b" type="m">strael</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Van uwe oogen op ons <rhyme label="b" type="m" corresp="#s3:l3">dael</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Soo sullen wy van druck en <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Door u gesicht ontslagen <rhyme label="c" type="m" corresp="#s3:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hoe lang', o Heere der <rhyme label="a" type="f">heyrcrachten</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Sal uwen toorn op onse <rhyme label="a" type="f" corresp="#s4:l1">clachten</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Noch smoocken als een felle <rhyme label="b" type="m">gloet</rhyme>?</l>
        <l id="s4:l4" met="4" type="-+">Met tranen hebdy ons <rhyme label="b" type="m" corresp="#s4:l3">gevoedt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Met tranen hebdy ons <rhyme label="c" type="m">gedrenckt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Die ghy met groote maten <rhyme label="c" type="m" corresp="#s4:l5">schenckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghy maket dat van onse <rhyme label="a" type="f">buyren</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Veel twist en onlust wy <rhyme label="a" type="f" corresp="#s5:l1">besueren</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Al onse haters spotten <rhyme label="b" type="m">seer</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Heer der heyrscharen, brengt ons <rhyme label="b" type="m" corresp="#s5:l3">wee'r</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Vertoonet ons u aenschijn <rhyme label="c" type="m">bly</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Dat wy van droefheyt werden <rhyme label="c" type="m" corresp="#s5:l5">vry</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Een wijnstock uyt <rhyme label="a" type="f">Egypten-lande</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Gehalet hebben uwe <rhyme label="a" type="f" corresp="#s6:l1">handen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Verjagende de volcken <rhyme label="b" type="m">wreet</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Ghy maecktet hem een plaetse <rhyme label="b" type="m" corresp="#s6:l3">breet</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Daer hy gewortelt vastlijck <rhyme label="c" type="m">cleeft</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Soo dat hy 't lant vervullet <rhyme label="c" type="m" corresp="#s6:l5">heeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De steyle bergen zijn <rhyme label="a" type="f">bedecket</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Met syne schaduw' <rhyme label="a" type="f" corresp="#s7:l1">uytgestrecket</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Syn rancken inde hoochte <rhyme label="b" type="m">gaen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Gelijck de ceder-bomen <rhyme label="b" type="m" corresp="#s7:l3">staen</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Syn tacken na de zee hy <rhyme label="c" type="m">schiet</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Syn loten na de <rhyme label="c" type="m" corresp="#s7:l5">watervliet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Waerom breeckty syn muyr aen <rhyme label="a" type="f">stucken</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En laet van yder-man <rhyme label="a" type="f" corresp="#s8:l1">afplucken</rhyme></l>
        <l id="s8:l3" met="4" type="-+">De trossen van syn ed'le <rhyme label="b" type="m">wijn</rhyme>?</l>
        <l id="s8:l4" met="4" type="-+">Waerom doorwoelt hem 't felle <rhyme label="b" type="m" corresp="#s8:l3">swijn</rhyme>?</l>
        <l id="s8:l5" met="4" type="-+">Hoe comtet, dat het domme <rhyme label="c" type="m">wilt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Aen hem syn gragen honger <rhyme label="c" type="m" corresp="#s8:l5">stilt</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O God, die zijt een Heer der <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Siet uyt den Hemel, wilt u <rhyme label="a" type="f" corresp="#s9:l1">keeren</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Tot desen wijnstock, die <rhyme label="b" type="m">geplant</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Is van u eygen <rhyme label="b" type="m" corresp="#s9:l3">rechterhant</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Om uwen Soon die eeuwich <rhyme label="c" type="m">leeft</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Dien uwe cracht gestercket <rhyme label="c" type="m" corresp="#s9:l5">heeft</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hy is verbrandet en <rhyme label="a" type="f">doorkervet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">De vlam uws aenschijns hem <rhyme label="a" type="f" corresp="#s10:l1">verdervet</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">O God wilt eenmael doen <rhyme label="b" type="m">bystant</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Den man van uwe <rhyme label="b" type="m" corresp="#s10:l3">rechterhant</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Des menschen soon die ghy ons <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Dien uwe cracht gestercktet <rhyme label="c" type="m" corresp="#s10:l5">heeft</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Wy sullen ons niet meer <rhyme label="a" type="f">begeven</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Tot afval, hout ons by het <rhyme label="a" type="f" corresp="#s11:l1">leven</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">Wy sullen roepen tot den <rhyme label="b" type="m">Heer</rhyme>.</l>
        <l id="s11:l4" met="4" type="-+">Heer der heyrscharen brengt ons <rhyme label="b" type="m" corresp="#s11:l3">weer</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">V aensicht geve synen <rhyme label="c" type="m">schijn</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Soo sullen wy geholpen <rhyme label="c" type="m" corresp="#s11:l5">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
