      <category translation="religion">godsdienst</category>
    </categories>
  <author>Guillaume Abrahams Ooijevaer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Den Mensch hier op der <rhyme label="a" type="m">Aerdt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Tot veel onrust <rhyme label="a" type="m" corresp="#s1:l1">ghebaert</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Iae woeldt ghelijck de <rhyme label="b" type="f">baren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die nimmer zijn in <rhyme label="c" type="m">vree</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Noch niet konnen <rhyme label="b" type="f" corresp="#s1:l3">bedaren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Door 't ruysschen van de <rhyme label="c" type="m" corresp="#s1:l4">Zee</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want d'een die steldt sijn <rhyme label="a" type="m">sin</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Op tijdelijck <rhyme label="a" type="m" corresp="#s2:l1">ghewin</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">D'ander die soeckt te <rhyme label="b" type="f">leeren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Eenighe <rhyme label="c" type="m">wetenschap</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat hy, om 's Wereldts <rhyme label="b" type="f" corresp="#s2:l3">eeren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Voort klimt van trap tot <rhyme label="c" type="m" corresp="#s2:l4">trap</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En alsoo woeldt den <rhyme label="a" type="m">Mensch</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Tot dat hy nae sijn <rhyme label="a" type="m" corresp="#s3:l1">wensch</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Krijght een gherustigh <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Waer deur hy werdt <rhyme label="c" type="m">verleydt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">(Door des Sathans <rhyme label="b" type="f" corresp="#s3:l3">ingheven</rhyme>)</l>
        <l id="s3:l6" met="3" type="-+">Van Godts <rhyme label="c" type="m" corresp="#s3:l4">gherechtigheydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer die in Godes <rhyme label="a" type="m">Wet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sijn lust en vreughden <rhyme label="a" type="m" corresp="#s4:l1">set</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Soeckt sijne reyne <rhyme label="b" type="f">Weghen</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Daer schept den Heere <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En hy gheeft haer dien <rhyme label="b" type="f" corresp="#s4:l3">Seghen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Voortaen te zijn in <rhyme label="c" type="m" corresp="#s4:l4">rust</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daerom, O Menschen <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Soeckt hier op 't Aerdtsche <rhyme label="a" type="m" corresp="#s5:l1">Dal</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Gheen Schatten te <rhyme label="b" type="f">vergaren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Maer wiltse (nae Godts <rhyme label="c" type="m">Woordt</rhyme>)</l>
        <l id="s5:l5" met="3" type="-+">In den Hemel <rhyme label="b" type="f" corresp="#s5:l3">bewaren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Soo sult ghy zijn <rhyme label="c" type="m" corresp="#s5:l4">verhoort</rhyme>.</l>
      </lg>
    </lg>
  </text>
