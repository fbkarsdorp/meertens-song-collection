    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Pieter van Gelre</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAer wilt ghy heen, wreede <rhyme label="a" type="f">Soldaten</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Met het almachtich eeuwich <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat Hemel, aerde, kan <rhyme label="a" type="f" corresp="#s1:l1">omvaten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En in sijn armen draghen <rhyme label="b" type="m" corresp="#s1:l2">voort</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ist niet ghenoech dat ghy met <rhyme label="a" type="f">koorden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat Hemels Lam ghevanghen <rhyme label="b" type="m">hebt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat ghy hem noch gheeft vuyle <rhyme label="a" type="f" corresp="#s2:l1">woorden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daer hy niet eens sijn mont <rhyme label="b" type="m" corresp="#s2:l2">verrept</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ia doet hem uyt de Beecke <rhyme label="a" type="f">drincken</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Tot aen de lippe van sijn <rhyme label="b" type="m">mondt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Soo dat hy schijnt by nae te <rhyme label="a" type="f" corresp="#s3:l1">sincken</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Door't koude water op de <rhyme label="b" type="m" corresp="#s3:l2">grondt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Iohannis siende dit <rhyme label="a" type="f">verwerren</rhyme>.</l>
        <l id="s4:l2" met="4" type="-+">Loopt anghstigh wegh voort Ioodts <rhyme label="b" type="m">gespuys</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Maer Petrus volghden noch van <rhyme label="a" type="f" corresp="#s4:l1">verre</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Mismoedigh tot in Annas <rhyme label="b" type="m" corresp="#s4:l2">Huys</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Daer mocht hy hem wat staen te <rhyme label="a" type="f">wermen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Want koud hem door het Lichaem <rhyme label="b" type="m">sneedt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En in hem selven droevigh <rhyme label="a" type="f" corresp="#s5:l1">kermen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Oover het geen dat Christus <rhyme label="b" type="m" corresp="#s5:l2">leedt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sommighe Dienaers, en <rhyme label="a" type="f">Dienst-maeghden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Stonden saghen Petrum <rhyme label="b" type="m">an</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Op't laetste hem, sommighe <rhyme label="a" type="f" corresp="#s6:l1">vraeghden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Waert ghy niet mee met dese <rhyme label="b" type="m" corresp="#s6:l2">man</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Petrus benaut en angh van <rhyme label="a" type="f">geeste</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Heeft haer tot driemael toe <rhyme label="b" type="m">gheseydt</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Ick can hem niet in't minst noch <rhyme label="a" type="f" corresp="#s7:l1">meeste</rhyme></l>
        <l id="s7:l4" met="4" type="-+">En daet'lijck heeft de Haen <rhyme label="b" type="m" corresp="#s7:l2">ghekreydt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Iesus omsiende met een <rhyme label="a" type="f">wincke</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Heeft Petrus herte soo <rhyme label="b" type="m">gheraeckt</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Dat hy tersondt begon te <rhyme label="a" type="f" corresp="#s8:l1">dincken</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Dat hy sijn Heere had <rhyme label="b" type="m" corresp="#s8:l2">versaeckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Daer had'men strack veel lauwe <rhyme label="a" type="f">tranen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Droef in sijn ooghen moghen <rhyme label="b" type="m">sien</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Ghelijck als drop'len der <rhyme label="a" type="f" corresp="#s9:l1">Iordane</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Die voor een ruys-windt heenen <rhyme label="b" type="m" corresp="#s9:l2">vlien</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hy suchten met veel sware <rhyme label="a" type="f">nockingh</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Hy riep soo langhe tot den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat die hem gaf door minne <rhyme label="a" type="f" corresp="#s10:l1">lockingh</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Verghevingh van sijn sonden <rhyme label="b" type="m" corresp="#s10:l2">weer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O sondaers laet ons niet <rhyme label="a" type="f">wanhopen</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Al hebben wy den Heer <rhyme label="b" type="m">verstoort</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Laet oock soo langh ons tranen <rhyme label="a" type="f" corresp="#s11:l1">loopen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Tot dat ons ziel verghevingh <rhyme label="b" type="m" corresp="#s11:l2">hoort</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Wy sullen wel ghenaed <rhyme label="a" type="f">ontfanghen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Ghelijck als Petrus heeft <rhyme label="b" type="m">ontfaen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Christus die winckt ons met <rhyme label="a" type="f" corresp="#s12:l1">verlangen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Als wy maer tot sijn passy <rhyme label="b" type="m" corresp="#s12:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Laet ons dan met hem gaen van <rhyme label="a" type="f">Annam</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Tot Cappham daermen hem seer <rhyme label="b" type="m">slaet</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">En hoemen hem daer weder van // <rhyme label="a" type="f" corresp="#s13:l1">nam</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">En brocht onwaerdigh tot <rhyme label="b" type="m" corresp="#s13:l2">Pilaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
