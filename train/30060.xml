  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">ICk ben van sins te stellen schoon by <rhyme label="a" type="f">dichte</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Een heylig liedt van goetheyt end <rhyme label="a" type="f" corresp="#s1:l1">gerichte</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">End wil met vreugt tot dijns naems lof end <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Psalmsingen, <rhyme label="b" type="m" corresp="#s1:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Ick wil met vlijt den rechten wech na <rhyme label="a" type="f">trachten</rhyme></l>
        <l id="s2:l2" met="5" type="-+">End met gedult nae dijne comste <rhyme label="a" type="f" corresp="#s2:l1">wachten</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">End midler tijt my dragen binnens <rhyme label="b" type="m">huys</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Met herten <rhyme label="b" type="m" corresp="#s2:l3">kuys</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Gheen boose saeck sal my voir oogen <rhyme label="a" type="f">comen</rhyme>:</l>
        <l id="s3:l2" met="5" type="-+">Ick hate doch de wercken der <rhyme label="a" type="f" corresp="#s3:l1">onvromen</rhyme>:</l>
        <l id="s3:l3" met="5" type="-+">Dies sal gheen stuck van al haer stout <rhyme label="b" type="m">bestaen</rhyme></l>
        <l id="s3:l4" met="2" type="-+">My kleven <rhyme label="b" type="m" corresp="#s3:l3">aen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Wie van gemoet schalck is end vol <rhyme label="a" type="f">ontrouwen</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Moet van my wech, end mach sie hier niet <rhyme label="a" type="f" corresp="#s4:l1">houwen</rhyme></l>
        <l id="s4:l3" met="5" type="-+">Gemerckt ick my by geenen valschen <rhyme label="b" type="m">man</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Vervoegen <rhyme label="b" type="m" corresp="#s4:l3">kan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Die achterrug quaet van hun naesten <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">Wil ick van my met ongenaed' <rhyme label="a" type="f" corresp="#s5:l1">versteken</rhyme>.</l>
        <l id="s5:l3" met="5" type="-+">Wie trotsich is end opgeblasen <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Dien lijd' ick <rhyme label="b" type="m" corresp="#s5:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Maer wil de geen aensien met goeden <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Die haer oprecht end ongeveynst <rhyme label="a" type="f" corresp="#s6:l1">betoogen</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">Op dat tvroim volck sijn woning by my <rhyme label="b" type="m">hou</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">End dien my <rhyme label="b" type="m" corresp="#s6:l3">trou</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Die sick met list end valsch bedroch <rhyme label="a" type="f">geneiren</rhyme></l>
        <l id="s7:l2" met="5" type="-+">Sal ick met toirn' uyt mijnen huyse <rhyme label="a" type="f" corresp="#s7:l1">weiren</rhyme>:</l>
        <l id="s7:l3" met="5" type="-+">Niet een van die met leugens <rhyme label="b" type="m">ommegaen</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Sal voir my <rhyme label="b" type="m" corresp="#s7:l3">staen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Ick wil heel vroeg al die sick godloos <rhyme label="a" type="f">dragen</rhyme></l>
        <l id="s8:l2" met="5" type="-+">Te niete doen, end uyt den lande <rhyme label="a" type="f" corresp="#s8:l1">jagen</rhyme>:</l>
        <l id="s8:l3" met="5" type="-+">Op dat Gods stadt ontledigt ende <rhyme label="b" type="m">vry</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Van onrecht <rhyme label="b" type="m" corresp="#s8:l3">sy</rhyme>.</l>
      </lg>
    </lg>
  </text>
