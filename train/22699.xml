<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22699</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag standard-name="nieuwjaarslied" translation="new year's song">nieuwjaarslied</tag>
    </tags>
    <melody>In een groot ongeluk ben ik geboren</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Die Salichmaecker pleyn, is gheborn <rhyme label="a" type="m">kleyn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hy brengt ons ghemeyn, int <rhyme label="b" type="m">open-baer</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Want anders gheyn, mach ons maecken <rhyme label="a" type="m" corresp="#s1:l1">reyn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Van alleyn dat greyn, int <rhyme label="b" type="m" corresp="#s1:l2">Nieuwe-Jaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy Armen kompt voort, tot dit <rhyme label="a" type="m">accoort</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Christus gheboort, wert <rhyme label="b" type="m">openbaer</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Hoort Suyden unde Noort, dat Godtlijcke <rhyme label="a" type="m" corresp="#s2:l1">Woort</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Is Vleysch geworden int <rhyme label="b" type="m" corresp="#s2:l2">Nieuwe-Jaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ghy Christen-Luyden, wilt nu <rhyme label="a" type="m">verblyden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">U Coninck kompt ryden, sachtmoedich <rhyme label="b" type="m">eenpaer</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Voor u te stryden, sonder eenich <rhyme label="a" type="m" corresp="#s3:l1">myden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Om u te bevryden, int Nieuwe <rhyme label="b" type="m" corresp="#s3:l2">Jaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
