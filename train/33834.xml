  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GY moet u naerstigh <rhyme label="a" type="f">waghten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat deughden niet <rhyme label="b" type="m">geschien</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Om dat men u souw <rhyme label="a" type="f" corresp="#s1:l1">aghten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Of dat de menschen 't <rhyme label="b" type="m" corresp="#s1:l2">sien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want gy-lieden voor <rhyme label="a" type="f">deesen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Na uw verlangh hier <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dan niet geloont soud' <rhyme label="a" type="f" corresp="#s2:l1">weesen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van uwe Hemelsch <rhyme label="b" type="m" corresp="#s2:l2">VaÃªr</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wilt geen trompette <rhyme label="a" type="f">blasen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Als g' aelmis doen <rhyme label="b" type="m">begeert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als de beveynsde <rhyme label="a" type="f" corresp="#s3:l1">dwasen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Om soo te sijn <rhyme label="b" type="m" corresp="#s3:l2">ge-eert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ik segge u, <rhyme label="a" type="f">voorware</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sy hebben haren <rhyme label="b" type="m">loon</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ontfangen nu <rhyme label="a" type="f" corresp="#s4:l1">aldare</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Op straet in deesen <rhyme label="b" type="m" corresp="#s4:l2">toon</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maekt dat u <rhyme label="a" type="f">slinker-hande</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Daer van geen kennis <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wat d'reghterhandt voor <rhyme label="a" type="f" corresp="#s5:l1">pande</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Tot eenen Aelmis <rhyme label="b" type="m" corresp="#s5:l2">geeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Op dat soo <rhyme label="a" type="f">heymelijke</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Uw Aelemis <rhyme label="b" type="m">geschiedt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat sal u loonen <rhyme label="a" type="f" corresp="#s6:l1">rijke</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Uw' Vader, die het <rhyme label="b" type="m" corresp="#s6:l2">siet</rhyme>.</l>
      </lg>
    </lg>
  </text>
