    <melody>Schone Isabel versta mijn reden wel</melody>
  <author>Gaudentius van Loemel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Iesu schoone der Maeghden <rhyme label="a" type="f">Croone</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">Aensiet u Bruydt die aen u geeft haer <rhyme label="b" type="m">trouw</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wilt haer ontfermen, ende <rhyme label="c" type="f">beschermen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ontfanght haer liefde die sy tot u <rhyme label="d" type="m">thoont</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Ghy zijt alleen die in haer Ziele <rhyme label="d" type="m" corresp="#s1:l4">woont</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Zijt ghy ‘t vrindinne die brandt van <rhyme label="a" type="f">binne</rhyme>:</l>
        <l id="s2:l2" met="4" type="+-">Door liefde die ghy stadich tot my <rhyme label="b" type="m">draeght</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Door u verachten des weerelts <rhyme label="c" type="f">prachten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Comt inden Hoff met deughden schoon <rhyme label="d" type="m">beplant</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Daer sal ick geven aen u liefde <rhyme label="d" type="m" corresp="#s2:l4">handt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Bruydegom Vader, ick kom u <rhyme label="a" type="f">nader</rhyme>:</l>
        <l id="s3:l2" met="4" type="+-">Want ghy behaeght my boven alle <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Met hert en sinne, ick u <rhyme label="c" type="f">beminne</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Ende verachte naer u goet <rhyme label="d" type="m">beleyt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Allen de weereldts pracht en <rhyme label="d" type="m" corresp="#s3:l4">ydelheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wilt ghy dees derven, en u <rhyme label="a" type="f">versterven</rhyme>:</l>
        <l id="s4:l2" met="4" type="+-">Soo comt beminde blyft altijdt <rhyme label="b" type="m">getrouw</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En sonder klagen u Cruysch wilt <rhyme label="c" type="f">dragen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Waer door ghy winnen sult de <rhyme label="d" type="m">saligheyt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Ende vergeten alle <rhyme label="d" type="m" corresp="#s4:l4">qualicheyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Iesu verheven! die zydt het <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Fonteyn daer alle goet uytspruyten <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Comt ick verlanghe, wilt my <rhyme label="c" type="f">omvanghe</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Begaeft my Heere ick met u <rhyme label="d" type="m">Kruys</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Op dat ick soo verjaegh het helsch <rhyme label="d" type="m" corresp="#s5:l4">ghespuys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Vrindinne schoone, ick sal ‘t u <rhyme label="a" type="f">loone</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Naer alle droefheyt ende lijden <rhyme label="b" type="m">swaer</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Want door het strijden sult u <rhyme label="c" type="f">verblyden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Met my v Bruyt al in des hemelsch <rhyme label="d" type="m">Throon</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Daer ick u geven sal de Maeghden <rhyme label="d" type="m" corresp="#s6:l4">Croon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
