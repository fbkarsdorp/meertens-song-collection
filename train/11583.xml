    <melody>Schoon lief wil mij troost geven</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WEyd ooghskens, wilt nu <rhyme label="a" type="f">weyden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt u gesichtjens <rhyme label="a" type="f" corresp="#s1:l1">leyden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En gaen in Floras <rhyme label="b" type="m">Hof</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Ey siet de bloemkens <rhyme label="c" type="f">bloosen</rhyme>!</l>
        <l id="s1:l5" met="3" type="-+">Beschaduwt van de <rhyme label="c" type="f" corresp="#s1:l4">Roosen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Van velerhande <rhyme label="b" type="m" corresp="#s1:l3">stof</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Lelijtjens die <rhyme label="a" type="f">ruycken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daer Tulpjens onder <rhyme label="a" type="f" corresp="#s2:l1">duycken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Met vlammigh root <rhyme label="b" type="m">geboort</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Met paers en purpre <rhyme label="c" type="f">stralen</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Narcissen lof <rhyme label="c" type="f" corresp="#s2:l4">behalen</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Met geel en wit <rhyme label="b" type="m" corresp="#s2:l3">geboort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Hyacinthen <rhyme label="a" type="f">proncken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die met den Iris <rhyme label="a" type="f" corresp="#s3:l1">loncken</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Bedeckt van <rhyme label="b" type="m">d'Eglentier</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">De Sonne-bloem staet <rhyme label="c" type="f">schoone</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">De roode <rhyme label="c" type="f" corresp="#s3:l4">Martagone</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Bemint den <rhyme label="b" type="m" corresp="#s3:l3">Lauwerier</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De Violetjens <rhyme label="a" type="f">aerdigh</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">De Crocus is soo <rhyme label="a" type="f" corresp="#s4:l1">waerdigh</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Als Vinkoord of  <rhyme label="b" type="m">Damas</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Laet Iaspis en <rhyme label="c" type="f">Rubijnen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Laet Esmaraud <rhyme label="c" type="f" corresp="#s4:l4">verschynen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Sy zijn als 't slechte <rhyme label="b" type="m" corresp="#s4:l3">glas</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Anemon' is te <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Tijm en Lavendel <rhyme label="a" type="f" corresp="#s5:l1">rijsen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Van onder 't <rhyme label="b" type="m">Roosmarijn</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">De Angeliertjens <rhyme label="c" type="f">geurigh</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Gesprenckelt en <rhyme label="c" type="f" corresp="#s5:l4">coleurigh</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">Verkies ick voor de <rhyme label="b" type="m" corresp="#s5:l3">mijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">‘Al 's Konings <rhyme label="a" type="f">heerlijckheden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">‘In pronckery van <rhyme label="a" type="f" corresp="#s6:l1">kleeden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">‘Of wat de prael <rhyme label="b" type="m">om-vat</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">‘Moet dadelijck <rhyme label="c" type="f">beswijcken</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">‘Ja voor de schoonheydt <rhyme label="c" type="f" corresp="#s6:l4">wijcken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">‘Van eenigh <rhyme label="b" type="m" corresp="#s6:l3">Lely-bladt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Of wildy sien de <rhyme label="a" type="f">Zaden</rhyme>?</l>
        <l id="s7:l2" met="3" type="-+">De bedjens zijn <rhyme label="a" type="f" corresp="#s7:l1">geladen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Met Beet' en met <rhyme label="b" type="m">Zalaet</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Met Rapen en <rhyme label="c" type="f">Meloenen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Asperges en <rhyme label="c" type="f" corresp="#s7:l4">Pompoenen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Radijs en ander <rhyme label="b" type="m" corresp="#s7:l3">zaet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">De Boomkens <rhyme label="a" type="f">overtogen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Met goud' en purper <rhyme label="a" type="f" corresp="#s8:l1">ooghen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Van allerley <rhyme label="b" type="m">fatsoen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Met allerhande <rhyme label="c" type="f">vruchten</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Tot nut of tot <rhyme label="c" type="f" corresp="#s8:l4">genuchten</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ons hert en ziele <rhyme label="b" type="m" corresp="#s8:l3">voen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O aengenaem <rhyme label="a" type="f">vermeyen</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">Ick wil mijn kapjen <rhyme label="a" type="f" corresp="#s9:l1">spreyen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En kreucken 't groene <rhyme label="b" type="m">gras</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">De schaduw van de <rhyme label="c" type="f">boomen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Heeft ons den brand <rhyme label="c" type="f" corresp="#s9:l4">benomen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Die ons soo lastigh <rhyme label="b" type="m" corresp="#s9:l3">was</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ey set u hier te <rhyme label="a" type="f">rusten</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En wilt u wat <rhyme label="a" type="f" corresp="#s10:l1">verlusten</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">‘En schouwen Godes <rhyme label="b" type="m">lof</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">‘Van elck bladt kondy <rhyme label="c" type="f">leeren</rhyme></l>
        <l id="s10:l5" met="3" type="-+">‘Het wonder-werck des <rhyme label="c" type="f" corresp="#s10:l4">Heeren</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">‘Met over-vloedigh <rhyme label="b" type="m" corresp="#s10:l3">stof</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">‘Wilt uyt dees Bloemkens <rhyme label="a" type="f">lesen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">‘Dat niets blijft in sijn <rhyme label="a" type="f" corresp="#s11:l1">wesen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">‘'t Is schijn en ydle <rhyme label="b" type="m">roem</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">‘Want of des menschen <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">‘Schijnt heerlijck en <rhyme label="c" type="f" corresp="#s11:l4">verheven</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">‘'t Verstuyft gelijck een <rhyme label="b" type="m" corresp="#s11:l3">bloem</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
