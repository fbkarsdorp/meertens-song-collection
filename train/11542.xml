    <melody>Het waren negen soldaten</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LAet ons des Heeren <rhyme label="a" type="f">zeghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En weldaed nemen <rhyme label="b" type="m">acht</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Door Godes gunst <rhyme label="a" type="f" corresp="#s1:l1">verkregen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Als oock den Dou en <rhyme label="a" type="f" corresp="#s1:l1">Regen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Voor 't menschelijck <rhyme label="b" type="m" corresp="#s1:l2">geslacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waer door wy oock <rhyme label="a" type="f">genieten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wat Godes milde <rhyme label="b" type="m">hand</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Komt over ons <rhyme label="a" type="f" corresp="#s2:l1">uyt-gieten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gelijck uyt rijcke <rhyme label="a" type="f" corresp="#s2:l1">vlieten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Tot zegen van het <rhyme label="b" type="m" corresp="#s2:l2">Land</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De beestjens in der <rhyme label="a" type="f">weyden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zijn voetsel voor den <rhyme label="b" type="m">mensch</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De Vogels op der <rhyme label="a" type="f" corresp="#s3:l1">Heyden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Jae niets is <rhyme label="a" type="f" corresp="#s3:l1">uyt-gescheyden</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Of 't dient ons al nae <rhyme label="b" type="m" corresp="#s3:l2">wensch</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De Vischjes in de <rhyme label="a" type="f">stroomen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">De dierkens in het <rhyme label="b" type="m">woud</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">De Velden en de <rhyme label="a" type="f" corresp="#s4:l1">Boomen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Jae niets is uyt <rhyme label="a" type="f" corresp="#s4:l1">genomen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Of 't is tot <rhyme label="b" type="m" corresp="#s4:l2">onderhoudt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De lieffelijcke <rhyme label="a" type="f">Wijnen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Zijn ons een lust en <rhyme label="b" type="m">vreughd</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die droefheyd doen <rhyme label="a" type="f" corresp="#s5:l1">verdwijnen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Jae niet kan ons <rhyme label="a" type="f" corresp="#s5:l1">verschijnen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Of 't dient ons tot <rhyme label="b" type="m" corresp="#s5:l2">geneughd</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Laet ons dan Christi <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">(O Vader die daer <rhyme label="b" type="m">zijt</rhyme>!</l>
        <l id="s6:l3" met="3" type="-+">Die d'Hemel wil <rhyme label="a" type="f" corresp="#s6:l1">bekleeden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">V naem vol <rhyme label="a" type="f" corresp="#s6:l1">heyligheden</rhyme>)</l>
        <l id="s6:l5" met="3" type="-+">Belijden t'aller <rhyme label="b" type="m" corresp="#s6:l2">tijdt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">V Rijck verschijn <rhyme label="a" type="f">almachtigh</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">V wil moet oock <rhyme label="b" type="m">geschien</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">In Hemel, Aerd', <rhyme label="a" type="f" corresp="#s7:l1">waerachtigh</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Ons broodt verleent ghy <rhyme label="a" type="f" corresp="#s7:l1">krachtigh</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Dat yeder mensch kan <rhyme label="b" type="m" corresp="#s7:l2">sien</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Vergeeft ons onse <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Als wy ons naesten <rhyme label="b" type="m">doen</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Dat wy tot geene <rhyme label="a" type="f" corresp="#s8:l1">stonden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">In wanhoop zijn <rhyme label="a" type="f" corresp="#s8:l1">bevonden</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Wilt ons van 't quade <rhyme label="b" type="m" corresp="#s8:l2">hoen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Want u Rijck blinckt in <rhyme label="a" type="f">vrede</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">In heerlijckheydt en <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">In kracht van <rhyme label="a" type="f" corresp="#s9:l1">eeuwigheden</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Schenckt ons doch hier <rhyme label="a" type="f" corresp="#s9:l1">beneden</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Een danckbaer hert O <rhyme label="b" type="m" corresp="#s9:l2">Heer</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
