    <melody>De nachtegaal die zong een lied</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="6" type="-+">WEl saligh sijnse opter aerden <rhyme label="a" type="m">levende</rhyme>,</l>
        <l id="s1:l2" met="6" type="-+">Al die de vreese Gods hier zijn <rhyme label="a" type="m" corresp="#s1:l1">aenclevende</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die gaen in al sijn weghen, ter <rhyme label="b" type="f">deghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Al na sijn woort, soo dat <rhyme label="c" type="m">behoort</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dat sy hier hebben <rhyme label="b" type="f" corresp="#s1:l3">verkreghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="6" type="-+">Den arbeyt uwer handen ghy hier eten <rhyme label="a" type="m">sult</rhyme></l>
        <l id="s2:l2" met="6" type="-+">Alsulcke gaven daer die Heer u mee <rhyme label="a" type="m" corresp="#s2:l1">vervult</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En ghy zijt dan mits desen, <rhyme label="b" type="f">ghepresen</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Saligh altijdt, u dies <rhyme label="c" type="m">verblijdt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Seer wel sal u dan <rhyme label="b" type="f" corresp="#s2:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="6" type="-+">V wijf ghelijck een wijngaert ranck vol druyven <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s3:l2" met="6" type="-+">Die overvloedigh brenght haer vruchten metter <rhyme label="a" type="m" corresp="#s3:l1">spoet</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Is sy, ghy moghet weten, <rhyme label="b" type="f">gheseten</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Aen uwen wandt, seer vast <rhyme label="c" type="m">gheplandt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dit heeft die Heer <rhyme label="b" type="f" corresp="#s3:l3">gheheten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="6" type="-+">V kinderen die Godt u is <rhyme label="a" type="m">toevoeghende</rhyme>,</l>
        <l id="s4:l2" met="6" type="-+">Daer in ghy moeght u wesen wel <rhyme label="a" type="m" corresp="#s4:l1">benoeghende</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Als planten van olyven, <rhyme label="b" type="f">beklijven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Aen uwen disch, sy staen <rhyme label="c" type="m">gewisch</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dus wil u Godt <rhyme label="b" type="f" corresp="#s4:l3">gherijven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="6" type="-+">Dus siet hoe dat die mensch hier wordt <rhyme label="a" type="m">ghebenedijt</rhyme></l>
        <l id="s5:l2" met="6" type="-+">Hoe dat die Heer hier boven hem altijdt <rhyme label="a" type="m" corresp="#s5:l1">verblijdt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Die kan den Heer der Heeren, soo <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat hy altoos, hoort sijnen <rhyme label="c" type="m">voos</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Sijn vreese wil <rhyme label="b" type="f" corresp="#s5:l3">hanteeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="6" type="-+">V moet ghebenedijen God met zijnder <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s6:l2" met="6" type="-+">Dat ghy moeght sien die goeden van <rhyme label="a" type="m" corresp="#s6:l1">Ierusalem</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Wt Syon uytverkoren, wilt <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die Heere gheest, soo langhe ghy <rhyme label="c" type="m">leeft</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Dees gracy u te <rhyme label="b" type="f" corresp="#s6:l3">voren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="6" type="-+">En ghy met uwen ooghen meest <rhyme label="a" type="m">beschouwende</rhyme></l>
        <l id="s7:l2" met="6" type="-+">Die kinder dijnre kinderen <rhyme label="a" type="m" corresp="#s7:l1">menighfouwende</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dat zy alhier by namen, <rhyme label="b" type="f">versamen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In Israel, verstaghet <rhyme label="c" type="m">wel</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Altijdt met vreden, <rhyme label="b" type="f" corresp="#s7:l3">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
