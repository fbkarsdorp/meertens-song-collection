  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ROzette pour un peu <rhyme label="a" type="f">d’absence</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Vostre ceur, vous avez <rhyme label="b" type="m">changé</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Et moy sçachant ceste <rhyme label="a" type="f" corresp="#s1:l1">inconstance</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Je mien autre part j’ay <rhyme label="b" type="m" corresp="#s1:l2">rangé</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Jamais plus beauté si <rhyme label="c" type="f">legere</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Sur moy tant de pouvoir <rhyme label="d" type="m">n’aura</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Nous verrons, volage <rhyme label="c" type="f" corresp="#s1:l5">Bergere</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Qui premier s’en <rhyme label="d" type="m" corresp="#s1:l6">repentira</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Tandis qu’en pleurs, je me <rhyme label="a" type="f">consume</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Moudissant cest <rhyme label="b" type="m">esloignement</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Vous qui n’aimez que par <rhyme label="a" type="f" corresp="#s2:l1">coustume</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Caressiez un nouvel <rhyme label="b" type="m" corresp="#s2:l2">amant</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Jamais legere <rhyme label="c" type="f">gyroüette</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Au vent si tost ne se <rhyme label="d" type="m">vira</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Nous verrons, Bergere <rhyme label="c" type="f" corresp="#s2:l5">Rozette</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Qui premiers s’en <rhyme label="d" type="m" corresp="#s2:l6">repentira</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ou sont tant de promesses <rhyme label="a" type="f">sainctes</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Tant de pleur versez en <rhyme label="b" type="m">partant</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Est il vray que ces tristes <rhyme label="a" type="f" corresp="#s3:l1">plaintes</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Sortissent d’un ceur <rhyme label="b" type="m" corresp="#s3:l2">inconstant</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dieux que vous estes <rhyme label="c" type="f">mensongere</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Moudit soit, qui plus vous <rhyme label="d" type="m">Croira</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Nous verrons, volage <rhyme label="c" type="f" corresp="#s3:l5">Bergere</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Qui premier s’en <rhyme label="d" type="m" corresp="#s3:l6">repentira</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Celuy qui a gaigné ma <rhyme label="a" type="f">place</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Ne vous peut aimer tant que <rhyme label="b" type="m">moy</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Et celle que j’aime, vous <rhyme label="a" type="f" corresp="#s4:l1">passe</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">De Beauté, d’amour &amp; de <rhyme label="b" type="m" corresp="#s4:l2">foy</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Gardez bien vostre amitié <rhyme label="c" type="f">neuve</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">La mienne plus ne <rhyme label="d" type="m">varira</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Et puis nous verrons a <rhyme label="c" type="f" corresp="#s4:l5">l’espreuve</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Qui premier s’en <rhyme label="d" type="m" corresp="#s4:l6">repentira</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
