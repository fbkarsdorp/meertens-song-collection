  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MAeghden betreedt de <rhyme label="a" type="f">paden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Dorothéa <rhyme label="b" type="m">Maeght</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Uw' zielen wilt <rhyme label="a" type="f" corresp="#s1:l1">versaden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met al dat Godt <rhyme label="b" type="m" corresp="#s1:l2">behaeght</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Siet toe dat noyt <rhyme label="c" type="m">verdort</rhyme></l>
        <l id="s1:l6" met="3" type="-+">U staet, noch Maeghde <rhyme label="d" type="m">blom</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Acht lijden licht en <rhyme label="c" type="m" corresp="#s1:l5">kort</rhyme>;</l>
        <l id="s1:l8" met="3" type="-+">Na 's werelts ziet niet <rhyme label="d" type="m" corresp="#s1:l6">om</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zoeckt niet als Godes <rhyme label="a" type="f">eere</rhyme>;</l>
        <l id="s2:l2" met="3" type="-+">U quae natuer <rhyme label="b" type="m">verwint</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Neemt troost in d'Heer der <rhyme label="a" type="f" corresp="#s2:l1">Heeren</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Wort, blijft als 't minste <rhyme label="b" type="m" corresp="#s2:l2">kint</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">U eyge wil <rhyme label="c" type="m">versmaet</rhyme>;</l>
        <l id="s2:l6" met="3" type="-+">Needrigh en zeeghbaer <rhyme label="d" type="m">weest</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Doet noyt dat u <rhyme label="c" type="m" corresp="#s2:l5">mis-staet</rhyme>;</l>
        <l id="s2:l8" met="3" type="-+">Schout 't prijckel minst als <rhyme label="d" type="m" corresp="#s2:l6">meest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dorothéa <rhyme label="a" type="f">deelachtigh</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Maeckt my u pijn en <rhyme label="b" type="m">bloet</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Door uw' gebede <rhyme label="a" type="f" corresp="#s3:l1">krachtigh</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Mijn lijde al <rhyme label="b" type="m" corresp="#s3:l2">versoet</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Verkrijght, dat ick <rhyme label="c" type="m">behouw</rhyme></l>
        <l id="s3:l6" met="3" type="-+">'t Gesicht en <rhyme label="d" type="m">suyverheyt</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Dat ick met goet <rhyme label="c" type="m" corresp="#s3:l5">berouw</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Van d'aerde schey <rhyme label="d" type="m" corresp="#s3:l6">bereyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maeckt Iesu! door u <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Mijn ziel en vleesch <rhyme label="b" type="m">vruchtbaer</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Geeft my al 't quaedt te <rhyme label="a" type="f" corresp="#s4:l1">mijde</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Te groeyen 't heele <rhyme label="b" type="m" corresp="#s4:l2">Iaer</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Mijn Heer, mijn Al, mijn <rhyme label="c" type="m">Goets</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wilt altijdt by mijn <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En versterckt mijn <rhyme label="c" type="m" corresp="#s4:l5">gemoet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Vertroost my in de <rhyme label="d" type="m" corresp="#s4:l6">pijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
