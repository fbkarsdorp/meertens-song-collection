  <author>Pieter van Gelre</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WAt siet ghy <rhyme label="a" type="m">op</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ghy Galileetsche <rhyme label="b" type="f">Mannen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Nae d'hooghe <rhyme label="a" type="m" corresp="#s1:l1">top</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Des Hemels, als <rhyme label="c" type="m">verbaest</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Het bangh' <rhyme label="a" type="m" corresp="#s1:l1">gheklop</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Vws herte, wilt <rhyme label="b" type="f" corresp="#s1:l2">verbannen</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Dat u als <rhyme label="a" type="m" corresp="#s1:l1">hop</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Doort 't Lichaem bitter <rhyme label="c" type="m" corresp="#s1:l4">reast</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Iesu die <rhyme label="c" type="m" corresp="#s1:l4">laest</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Is vander doodt <rhyme label="d" type="m">op-staen</rhyme>,</l>
        <l id="s1:l11" met="4" type="-+">Nu weder om ghetreden // <rhyme label="e" type="m">is</rhyme></l>
        <l id="s1:l12" met="4" type="-+">Ten Hemel, daer sijn stede // <rhyme label="e" type="m" corresp="#s1:l11">is</rhyme>:</l>
        <l id="s1:l13" met="4" type="-+">Om dat hy daer nu vrede // <rhyme label="e" type="m" corresp="#s1:l11">is</rhyme></l>
        <l id="s1:l14" met="3" type="-+">Begeerigh te <rhyme label="d" type="m" corresp="#s1:l10">ontfaen</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Dus sijt niet <rhyme label="a" type="m">angh'</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat des Hemels <rhyme label="b" type="f">wolcken</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Met veel <rhyme label="a" type="m" corresp="#s2:l1">ghekrangh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Rontsom u swieren <rhyme label="c" type="m">heen</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Tis dat hy <rhyme label="a" type="m" corresp="#s2:l1">langh</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ghenoegh, van boose <rhyme label="b" type="f" corresp="#s2:l2">volcken</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Sulck lijden <rhyme label="a" type="m" corresp="#s2:l1">bangh</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Ellendigh, heeft <rhyme label="c" type="m" corresp="#s2:l4">gheleen</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Sy doen hem <rhyme label="c" type="m" corresp="#s2:l4">treen</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Tot d'Alderhooghste <rhyme label="d" type="m">Troon</rhyme>,</l>
        <l id="s2:l11" met="4" type="-+">Daer hy sijn Vader bieden // <rhyme label="e" type="m">sal</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">Dat hem niet weer ontvlieden // <rhyme label="e" type="m" corresp="#s2:l11">sal</rhyme>,</l>
        <l id="s2:l13" met="4" type="-+">En dat de goeden lieden // <rhyme label="e" type="m" corresp="#s2:l11">sal</rhyme></l>
        <l id="s2:l14" met="3" type="-+">Sijn tot een eewigh <rhyme label="d" type="m" corresp="#s2:l10">Croon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Hy heeft u <rhyme label="a" type="m">al</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van langh gheseydt te <rhyme label="b" type="f">vooren</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Dat hy u <rhyme label="a" type="m" corresp="#s3:l1">sal</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Senden den Heyl'ghen <rhyme label="c" type="m">Geest</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">op dat het <rhyme label="a" type="m" corresp="#s3:l1">dal</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Der Aerden, mach <rhyme label="b" type="f" corresp="#s3:l2">aenhooren</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">In wiens <rhyme label="a" type="m" corresp="#s3:l1">ghetal</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Sy dus langh sijn <rhyme label="c" type="m" corresp="#s3:l4">gheweest</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">En soo hy <rhyme label="c" type="m" corresp="#s3:l4">meest</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Met u hier stadich <rhyme label="d" type="m">was</rhyme>,</l>
        <l id="s3:l11" met="4" type="-+">Hoe soud' hy u daer geven // <rhyme label="e" type="m">hier</rhyme>,</l>
        <l id="s3:l12" met="4" type="-+">Dat God'lijck hoogh verheven // <rhyme label="e" type="m" corresp="#s3:l11">vier</rhyme>,</l>
        <l id="s3:l13" met="4" type="-+">dat zielen kan doen leven // <rhyme label="e" type="m" corresp="#s3:l11">hier</rhyme></l>
        <l id="s3:l14" met="3" type="-+">Angh voor het hels <rhyme label="d" type="m" corresp="#s3:l10">moras</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ghy alle <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sult wesen trou <rhyme label="b" type="f">ghetuyghen</rhyme>:</l>
        <l id="s4:l3" met="2" type="-+">Voor haer die't <rhyme label="a" type="m" corresp="#s4:l1">van</rhyme></l>
        <l id="s4:l4" met="3" type="-+">V eyschen, met <rhyme label="c" type="m">begeer</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Op dat elck <rhyme label="a" type="m" corresp="#s4:l1">kan</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sijn hert tot hem waerts <rhyme label="b" type="f" corresp="#s4:l2">buyghen</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">En yv'rich <rhyme label="a" type="m" corresp="#s4:l1">an</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Hem bidden, als haer <rhyme label="c" type="m" corresp="#s4:l4">Heer</rhyme>.</l>
        <l id="s4:l9" met="2" type="-+">Dus met sijn <rhyme label="c" type="m" corresp="#s4:l4">leer</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Gaet tot het woeste <rhyme label="d" type="m">endt</rhyme></l>
        <l id="s4:l11" met="4" type="-+">Van d'aertsche omloops palen // <rhyme label="e" type="m">veer</rhyme>:</l>
        <l id="s4:l12" met="4" type="-+">Op dat ghy hem meucht halen // <rhyme label="e" type="m" corresp="#s4:l11">weer</rhyme>,</l>
        <l id="s4:l13" met="4" type="-+">Daer hy om van sijn zalen // <rhyme label="e" type="m" corresp="#s4:l11">neer</rhyme></l>
        <l id="s4:l14" met="3" type="-+">Te lijden was <rhyme label="d" type="m" corresp="#s4:l10">ghesent</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">
          <rhyme label="a" type="m">Samarien</rhyme>
        </l>
        <l id="s5:l2" met="3" type="-+">Sult ghy sijn woort oock <rhyme label="b" type="f">preecken</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Iudea <rhyme label="a" type="m" corresp="#s5:l1">en</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Gheheel <rhyme label="c" type="m">Ierusalem</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Op dat haer <rhyme label="a" type="m" corresp="#s5:l1">den</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Gekruysten, niet <rhyme label="b" type="f" corresp="#s5:l2">ontbreecke</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Die <rhyme label="a" type="m" corresp="#s5:l1">d'Hemelen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Dus maeckte met sijn <rhyme label="c" type="m" corresp="#s5:l4">stem</rhyme>.</l>
        <l id="s5:l9" met="2" type="-+">En soo ghy <rhyme label="c" type="m" corresp="#s5:l4">hem</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Daer saecht opklimmen <rhyme label="d" type="m">klaer</rhyme></l>
        <l id="s5:l11" met="4" type="-+">Soo sal hy oock weer komen // <rhyme label="e" type="m">aen</rhyme>;</l>
        <l id="s5:l12" met="4" type="-+">Alst alles sal met schromen // <rhyme label="e" type="m" corresp="#s5:l11">staen</rhyme>,</l>
        <l id="s5:l13" met="4" type="-+">En klippen, berghen, boomen // <rhyme label="e" type="m" corresp="#s5:l11">gaen</rhyme></l>
        <l id="s5:l14" met="3" type="-+">Te niet, soo 't voormaels <rhyme label="d" type="m" corresp="#s5:l10">waer</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
