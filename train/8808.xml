    <melody>In dich habe ich gehofft</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEEr mijn Betrouwen staet aen <rhyme label="a" type="m">dy</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Laet nimmermeer beschamet <rhyme label="a" type="m" corresp="#s1:l1">my</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ins Cruyces sware <rhyme label="b" type="f">Tijden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Maer wilt door dijn <rhyme label="c" type="m">Gerechticheyt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Verlossen my wt <rhyme label="b" type="f" corresp="#s1:l3">Lijden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dijn Oor tot my wilt neygen <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">End' my te helpen haesten <rhyme label="a" type="m" corresp="#s2:l1">seer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wilt wesen myn <rhyme label="b" type="f">Steenrotze</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Myn vaste Borch, al sonder <rhyme label="c" type="m">sorgh'</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Den Vyandt bied' ick <rhyme label="b" type="f" corresp="#s2:l3">trotze</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want ghy mijn stercke Veste <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">In mijnen ancxt end' lijdens <rhyme label="a" type="m" corresp="#s3:l1">tijdt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Om dijnes Namens <rhyme label="b" type="f">willen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Gheleydet end' behoedet <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ghy moecht myn herte <rhyme label="b" type="f" corresp="#s3:l3">stillen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maeckt my Godt wt den nette <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dat sy gaen heym'lick stellen <rhyme label="a" type="m" corresp="#s4:l1">my</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Mijn Gheest in dyne <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Beveel ick, HEER ghy trouwe <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Helpt my van Doodes <rhyme label="b" type="f" corresp="#s4:l3">Banden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ick haet altijdt die loose <rhyme label="a" type="m">Leer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">End' hoop alleyn op GOdt mijn <rhyme label="a" type="m" corresp="#s5:l1">Heer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Vrolijck ben ick end' <rhyme label="b" type="f">blijde</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Om dijne goetheyt dat ghy <rhyme label="c" type="m">my</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Gaet aensien als ick <rhyme label="b" type="f" corresp="#s5:l3">lijde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy kent mijn Siel in mijne <rhyme label="a" type="m">noodt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">End' in des Vyandts <rhyme label="a" type="m" corresp="#s6:l1">overmoet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wilt ghy my niet hen <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maer brengt my op een wijde <rhyme label="c" type="m">ruym</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Daer ick gae veylich <rhyme label="b" type="f" corresp="#s6:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">HEER (Ancxt is my) ghenadich <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Seer mismaeckt is van groot <rhyme label="a" type="m" corresp="#s7:l1">verdriet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Mijn lichaem end' myn <rhyme label="b" type="f">Siele</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Myn leven end' myn jaren <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Vergaen van Sufften <rhyme label="b" type="f" corresp="#s7:l3">vele</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Mijn cracht al heel vervallen <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Van weghen myner <rhyme label="a" type="m" corresp="#s8:l1">missedaet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">End' mijn ghebeent' <rhyme label="b" type="f">versmachten</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">T'gaet my so qualijck, dat oock <rhyme label="c" type="m">nu</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Myn Naebuer my <rhyme label="b" type="f" corresp="#s8:l3">verachten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Myn vrienden ben ic nu een <rhyme label="a" type="m">schouw</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">End' die my souden wesen <rhyme label="a" type="m" corresp="#s9:l1">trouw</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Die vlieden my op <rhyme label="b" type="f">straten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Mijns is vergheten als een <rhyme label="c" type="m">Dood'</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Ben heel end' al <rhyme label="b" type="f" corresp="#s9:l3">verlaten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Als een ghebroken Vat ben <rhyme label="a" type="m">ick</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Want veel my schelden seer <rhyme label="a" type="m" corresp="#s10:l1">qualijck</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Dat all' Man my moet <rhyme label="b" type="f">mijden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Sy raetslaen om myn leven <rhyme label="c" type="m">fel</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">End' doen my doodes <rhyme label="b" type="f" corresp="#s10:l3">lijden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Maer Heer ick hoop op dy <rhyme label="a" type="m">certeyn</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">End' segg' ghy zijt myn Godt <rhyme label="a" type="m" corresp="#s11:l1">alleyn</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Het staet in dijnen <rhyme label="b" type="f">handen</rhyme>.</l>
        <l id="s11:l4" met="4" type="-+">Veel zynder die vervolghen <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Helpt my van myn <rhyme label="b" type="f" corresp="#s11:l3">Vyanden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Laet luychten God dijn <rhyme label="a" type="m">aengesicht</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Wilt helpen my, Ick ben dijn <rhyme label="a" type="m" corresp="#s12:l1">Knecht</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Door dijn goetheyt <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">HEEr laet myn niet te schanden <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Maer wilt myn Siel <rhyme label="b" type="f" corresp="#s12:l3">ghenesen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hen schamen moet s' Godloosen <rhyme label="a" type="m">prael</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Bedwonghen inder Hellen <rhyme label="a" type="m" corresp="#s13:l1">quael</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Met alle valsche <rhyme label="b" type="f">Tonghen</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Die stout altijt blameeren <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Den Vromen, Out oft <rhyme label="b" type="f" corresp="#s13:l3">Jonghen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hoe groot is Heer die goetheyt <rhyme label="a" type="m">dijn</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Die ghy gaet ons besparen <rhyme label="a" type="m" corresp="#s14:l1">fijn</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Als wy gaen op dy <rhyme label="b" type="f">bouwen</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">End' als wy niet op Menschen <rhyme label="c" type="m">sien</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Maer dy alleyn <rhyme label="b" type="f" corresp="#s14:l3">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Verborghen doet ghy heym'lic <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Bedect voor all' Mans Trots <rhyme label="a" type="m" corresp="#s15:l1">voorwaer</rhyme></l>
        <l id="s15:l3" met="3" type="-+">In dijnen Tente <rhyme label="b" type="f">reyne</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Dat haer geen tong' mach schade <rhyme label="c" type="m">doen</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Kijffachtich end' <rhyme label="b" type="f" corresp="#s15:l3">vileyne</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Ghelovet moet die HEEre <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Want hy heeft nu bethoont aen <rhyme label="a" type="m" corresp="#s16:l1">mijn</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Een wonderlijcke <rhyme label="b" type="f">Goede</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Heeft my een vaste Stadt <rhyme label="c" type="m">bereyt</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Sal blijven in syn <rhyme label="b" type="f" corresp="#s16:l3">Hoede</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">In mijnen Ancxt heb ick <rhyme label="a" type="m">ghedacht</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Die HEER heeft my al heel <rhyme label="a" type="m" corresp="#s17:l1">veracht</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Verstooten van syn <rhyme label="b" type="f">Ooghen</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Nochtans verhoord' hy mijn <rhyme label="c" type="m">geschrey</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">Smeecken heeft hem <rhyme label="b" type="f" corresp="#s17:l3">bewoogen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Ghy Heylich Volc bemint den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Des HEEren Huld' is ons' <rhyme label="a" type="m" corresp="#s18:l1">Geweer</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Als wy Gheloovich <rhyme label="b" type="f">blijven</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Oock dapper hy Betalen <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">All' die Moetwil <rhyme label="b" type="f" corresp="#s18:l3">bedrijven</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Zijt wel getroost end' <rhyme label="a" type="m">onvertzaecht</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Ghy all' die nae den HEEre <rhyme label="a" type="m" corresp="#s19:l1">vraecht</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Ghedult en sal niet <rhyme label="b" type="f">wancken</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Al schijnt die Hulpe langsaem <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Ghy sult noch vrolijck <rhyme label="b" type="f" corresp="#s19:l3">dancken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
