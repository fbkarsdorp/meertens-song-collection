  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SImson was door en door <rhyme label="a" type="m">door-speckt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met kracht van duysent <rhyme label="b" type="f">Reusen</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Daer hy sijn handt maer henen <rhyme label="a" type="m" corresp="#s1:l1">streckt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Moet Stael tot Stof <rhyme label="b" type="f" corresp="#s1:l2">verkneusen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sijn handt, diens kracht gheen scheyts-pael <rhyme label="a" type="m">weet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Grijpt op een Ezels <rhyme label="b" type="f">Tant-been</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Daer mee h' een Heyr, in 't Stael <rhyme label="a" type="m" corresp="#s2:l1">ghekleet</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Slaet neder in't Voet-sant <rhyme label="b" type="f" corresp="#s2:l2">heen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sijn Rugh, geschelpt in Kop'ren <rhyme label="a" type="m">korst</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ghevult vol Yseren <rhyme label="b" type="f">Mergh-sop</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Heeft Gasa's sware Poort <rhyme label="a" type="m" corresp="#s3:l1">ghetorst</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van ond'ren op een <rhyme label="b" type="f" corresp="#s3:l2">Bergh-top</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sijn kracht als aengeblasen <rhyme label="a" type="m">Brandt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Versenghde nieuwe <rhyme label="b" type="f">Touwen</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Gants Philistijn en kan sijn <rhyme label="a" type="m" corresp="#s4:l1">handt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In Ketenen niet <rhyme label="b" type="f" corresp="#s4:l2">houwen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer waer was dese <rhyme label="a" type="m">Kracht-Fonteyn</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die hem alsoo <rhyme label="b" type="f">door-spoelde</rhyme>?</l>
        <l id="s5:l3" met="4" type="-+">Hy was maer in het Hayr <rhyme label="a" type="m" corresp="#s5:l1">alleyn</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat om sijn Hooft <rhyme label="b" type="f" corresp="#s5:l2">krioelde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Door Simson heen sie ick Godts <rhyme label="a" type="m">Kerck</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Vol krachten, en <rhyme label="b" type="f">Man-moedigh</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Haer Vyanden sijn oock wel <rhyme label="a" type="m" corresp="#s6:l1">sterck</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En hatigh, en <rhyme label="b" type="f" corresp="#s6:l2">verwoedigh</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer 's Sathans listigh <rhyme label="a" type="m">Breydel-net</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En Dwingh'landts <rhyme label="b" type="f">staeckel-vueren</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">De Lock-lust die het vlees <rhyme label="a" type="m" corresp="#s7:l1">voorset</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Diens soet haest sal <rhyme label="b" type="f" corresp="#s7:l2">versueren</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sijn voor haer een ontzielde <rhyme label="a" type="m">romp</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En opgeslockt <rhyme label="b" type="f">verslinder</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">De Afgrondt knarst haer tanden <rhyme label="a" type="m" corresp="#s8:l1">stomp</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Noch blijft Godts Kerck <rhyme label="b" type="f" corresp="#s8:l2">verwinder</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maer waer is dese kracht <rhyme label="a" type="m">ghehuyst</rhyme>?</l>
        <l id="s9:l2" met="3" type="-+">s' Is in haer Hooft <rhyme label="b" type="f">ghelegen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Die met sijn Yseren Staf <rhyme label="a" type="m" corresp="#s9:l1">vergruyst</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Wiens handt dat hem is <rhyme label="b" type="f" corresp="#s9:l2">teghen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Van Christus komt haer dit van <rhyme label="a" type="m">daen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die Zenuwt soo Godts <rhyme label="b" type="f">Kinderen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Door hem is 't dat sy staende <rhyme label="a" type="m" corresp="#s10:l1">slaen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Al wie haer heyl wil <rhyme label="b" type="f" corresp="#s10:l2">hinderen</rhyme>.</l>
      </lg>
    </lg>
  </text>
