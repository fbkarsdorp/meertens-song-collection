<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184944</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Als ik uit wandelen ga</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MYn hert met vreughden <rhyme label="a" type="m">dicht</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Iesus Godes <rhyme label="b" type="m">Soon</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Die sijn gemeente <rhyme label="a" type="m" corresp="#s1:l1">sticht</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En heerlijck stelt ten <rhyme label="b" type="m" corresp="#s1:l2">toon</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Hier in des Wereldts <rhyme label="c" type="m">pleyn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Niet door gewelt of <rhyme label="d" type="m">macht</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Maer door sijn woordt <rhyme label="c" type="m" corresp="#s1:l5">alleyn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Vervult met geest en <rhyme label="d" type="m" corresp="#s1:l6">kracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Uyt der Apost'len <rhyme label="a" type="m">mondt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gingh 't woordt scherp als een <rhyme label="b" type="m">sweert</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Op eenen dagh <rhyme label="a" type="m" corresp="#s2:l1">terstondt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Drie duysent zijn <rhyme label="b" type="m" corresp="#s2:l2">bekeert</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die bleven in de <rhyme label="c" type="m">leer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Volstandigh tot der <rhyme label="d" type="m">doodt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Door liefde meer en <rhyme label="c" type="m" corresp="#s2:l5">meer</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Werdt Godts gemeynte <rhyme label="d" type="m" corresp="#s2:l6">groot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Door reyne liefde <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Was alles doe <rhyme label="b" type="m">gemeen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En door ware <rhyme label="a" type="m" corresp="#s3:l1">ootmoedt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Acht elck hem selven <rhyme label="b" type="m" corresp="#s3:l2">kleen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Men sach niet op 't <rhyme label="c" type="m">verstandt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Alleen, maer rechte <rhyme label="d" type="m">deught</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Gaf haer tot onder <rhyme label="c" type="m" corresp="#s3:l5">pandt</rhyme>:</l>
        <l id="s3:l8" met="3" type="-+">Godts geest in 't hert <rhyme label="d" type="m" corresp="#s3:l6">verheught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Daer door was elck <rhyme label="a" type="m">bequaem</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Te spreecken van Godts <rhyme label="b" type="m">woordt</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">En in des Heeren <rhyme label="a" type="m" corresp="#s4:l1">naem</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Werdt yders stem <rhyme label="b" type="m" corresp="#s4:l2">gehoort</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">De vryheydt was <rhyme label="c" type="m">gemeen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Te spreecken met <rhyme label="d" type="m">aendacht</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Niemandt 't sy groot of <rhyme label="c" type="m" corresp="#s4:l5">kleen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Onwaerdigh was <rhyme label="d" type="m" corresp="#s4:l6">geacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Elck bracht sijn gaven <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Tot leeringh <rhyme label="b" type="m">onbesmet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Malkander stichten <rhyme label="a" type="m" corresp="#s5:l1">sy</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Al in des Heeren <rhyme label="b" type="m" corresp="#s5:l2">wet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Om door der liefden <rhyme label="c" type="m">aerdt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">De waerheydt voor te <rhyme label="d" type="m">staen</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Het leeren <rhyme label="c" type="m" corresp="#s5:l5">onbeswaert</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Van yder werdt <rhyme label="d" type="m" corresp="#s5:l6">gedaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Soo bloeyde Christus <rhyme label="a" type="m">Bruydt</rhyme>;</l>
        <l id="s6:l2" met="3" type="-+">En sijn gemeente <rhyme label="b" type="m">reyn</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Haer gaven bloncken <rhyme label="a" type="m" corresp="#s6:l1">uyt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Haer deughden <rhyme label="b" type="m" corresp="#s6:l2">algemeyn</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Waren als goudt in 't <rhyme label="c" type="m">vyer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Beproeft soo datmen <rhyme label="d" type="m">sagh</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">'t Geloof aen elck <rhyme label="c" type="m" corresp="#s6:l5">quartier</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Uyt lichten als den <rhyme label="d" type="m" corresp="#s6:l6">dagh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wie soud niet zijn <rhyme label="a" type="m">verheught</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En in sijn geest <rhyme label="b" type="m">verblijdt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat Christus Bruydt met <rhyme label="a" type="m" corresp="#s7:l1">vreught</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En gaven nu ter <rhyme label="b" type="m" corresp="#s7:l2">tijdt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Bemindt wierdt en <rhyme label="c" type="m">geacht</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Van velen in 't <rhyme label="d" type="m">gemoedt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En door der liefden <rhyme label="c" type="m" corresp="#s7:l5">kracht</rhyme></l>
        <l id="s7:l8" met="3" type="-+">In vryheydt werdt <rhyme label="d" type="m" corresp="#s7:l6">gevoedt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maer laes die <rhyme label="a" type="m">waerdigheydt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Van Gods gemeent men <rhyme label="b" type="m">siet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Is met haer <rhyme label="a" type="m" corresp="#s8:l1">heerlijckheydt</rhyme></l>
        <l id="s8:l4" met="3" type="-+">By na vergaen tot <rhyme label="b" type="m" corresp="#s8:l2">niet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Door heerschappy en <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Werdt Christus geest en <rhyme label="d" type="m">woordt</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Soo heerlijck niet <rhyme label="c" type="m" corresp="#s8:l5">geacht</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Gelijck alst wel <rhyme label="d" type="m" corresp="#s8:l6">behoort</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">'t Schijnt of Gods heyligh <rhyme label="a" type="m">woordt</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Sijn kracht was heel <rhyme label="b" type="m">vergaen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Elck na sijn leeraers <rhyme label="a" type="m" corresp="#s9:l1">hoort</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Niemandt durft blijven <rhyme label="b" type="m" corresp="#s9:l2">staen</rhyme>;</l>
        <l id="s9:l5" met="3" type="-+">Alleen op Christus <rhyme label="c" type="m">leer</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En 't Euangelij <rhyme label="d" type="m">soet</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">De waerheydt drucktmen <rhyme label="c" type="m" corresp="#s9:l5">neer</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Door sectery <rhyme label="d" type="m" corresp="#s9:l6">verwoedt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Want twist ende <rhyme label="a" type="m">tweedracht</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Scheurt Godes kerck van <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Geen liefde werdt <rhyme label="a" type="m" corresp="#s10:l1">betracht</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Elck acht een ander <rhyme label="b" type="m" corresp="#s10:l2">kleen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">De deught van waer <rhyme label="c" type="m">ootmoedt</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Is wegh: alleen 't <rhyme label="d" type="m">verstandt</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Heerst over het <rhyme label="c" type="m" corresp="#s10:l5">gemoet</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">En neemt de <rhyme label="d" type="m" corresp="#s10:l6">overhandt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">'t Blijckt klaerder als den <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Dat nu een ander <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Belet dat niemandt <rhyme label="a" type="m" corresp="#s11:l1">mach</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Vry spreecken <rhyme label="b" type="m" corresp="#s11:l2">onbevreest</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Tot stichtingh <rhyme label="c" type="m">openbaer</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Uyt Godes heyligh <rhyme label="d" type="m">woordt</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Onder de Christen <rhyme label="c" type="m" corresp="#s11:l5">schaer</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Werdt niemandt nu <rhyme label="d" type="m" corresp="#s11:l6">gehoort</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Als die men self <rhyme label="a" type="m">verkiest</rhyme></l>
        <l id="s12:l2" met="3" type="-+">En 't woordt alleen <rhyme label="b" type="m">betrout</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">De vryheydt men <rhyme label="a" type="m" corresp="#s12:l1">verliest</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">De Leeraers worden <rhyme label="b" type="m" corresp="#s12:l2">stout</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Dats alleen nemen <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Het recht van Gods <rhyme label="d" type="m">gemeent</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">'tWelck eertijdts seer <rhyme label="c" type="m" corresp="#s12:l5">bequaem</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Was in Gods kerck <rhyme label="d" type="m" corresp="#s12:l6">verleent</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Den geest werdt uyt <rhyme label="a" type="m">geblust</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">De Prophecy <rhyme label="b" type="m">veracht</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Niemandt hoe wel <rhyme label="a" type="m" corresp="#s13:l1">bewust</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Heeft om te spreken <rhyme label="b" type="m" corresp="#s13:l2">macht</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">De vryheydt werdt <rhyme label="c" type="m">benout</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Door dwangh van <rhyme label="d" type="m">heerschappy</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">De gaven <rhyme label="c" type="m" corresp="#s13:l5">menighfout</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Sijn onder <rhyme label="d" type="m" corresp="#s13:l6">slaverny</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Christus gemeent <rhyme label="a" type="m">aenschout</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Met al haer <rhyme label="b" type="m">heerlijckheydt</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">En gaven menigh <rhyme label="a" type="m" corresp="#s14:l1">fout</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Nu gans bedurven <rhyme label="b" type="m" corresp="#s14:l2">leyd</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Daer sijn geen proeve <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Van lijden en <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Men druckt nu self ter <rhyme label="c" type="m" corresp="#s14:l5">neer</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">Hem die de waerheydt <rhyme label="d" type="m" corresp="#s14:l6">siet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Dies klaecht mijn hert en <rhyme label="a" type="m">weent</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Met allen diet <rhyme label="b" type="m">verstaen</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Acht Christus u <rhyme label="a" type="m" corresp="#s15:l1">gemeent</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Doch eens wilt schouwen <rhyme label="b" type="m" corresp="#s15:l2">aen</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">O Heer wilt neder <rhyme label="c" type="m">sien</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">En maeckt u naem weer <rhyme label="d" type="m">groot</rhyme></l>
        <l id="s15:l7" met="3" type="-+">Wilt doch u hulp aen <rhyme label="c" type="m" corresp="#s15:l5">bien</rhyme>.</l>
        <l id="s15:l8" met="3" type="-+">U Bruydt is in den <rhyme label="d" type="m" corresp="#s15:l6">noodt</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Vergadert doch by <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Die suchten tot u <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Ghy kentse in 't <rhyme label="a" type="m" corresp="#s16:l1">gemeen</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Laet doch tot uwer <rhyme label="b" type="m" corresp="#s16:l2">eer</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">U volck weer zijn <rhyme label="c" type="m">gebracht</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Tot prijs van uwen <rhyme label="d" type="m">naem</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Uyt alderley <rhyme label="c" type="m" corresp="#s16:l5">geslacht</rhyme>,</l>
        <l id="s16:l8" met="3" type="-+">In een gemeent te <rhyme label="d" type="m" corresp="#s16:l6">saem</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
