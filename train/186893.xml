<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186893</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody>Wie heeft ooit groter gek gezien</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIe heeft 'er ooit grooter gek <rhyme label="a" type="m">gezien</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Als de <rhyme label="b" type="m">Engelsman</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Die zonder <rhyme label="b" type="m" corresp="#s1:l2">larsjan</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ons Oorelog durft 'er te <rhyme label="a" type="m" corresp="#s1:l1">bien</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ha ha der die vent is zeker <rhyme label="c" type="m">dol</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Zyn Ponskom die was 'er te byster <rhyme label="c" type="m" corresp="#s1:l5">vol</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Die slok die maakten zyn kop op <rhyme label="c" type="m" corresp="#s1:l5">hol</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Toen hy 'er dien <rhyme label="d" type="m">Vriendschapsband</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Verbrakker met <rhyme label="d" type="m" corresp="#s1:l8">Nederland</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maar wat raakt ons'er die <rhyme label="a" type="m">mallevent</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Ik drinker myn <rhyme label="b" type="m">drank</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">En lag om zyn <rhyme label="b" type="m" corresp="#s2:l2">stank</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Al is hy <rhyme label="a" type="m" corresp="#s2:l1">inpertinent</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Og og als die bloed errys migreren <rhyme label="c" type="m">word</rhyme>;</l>
        <l id="s2:l6" met="4" type="+-">En lust heeft te vegten dan komt hy te <rhyme label="c" type="m" corresp="#s2:l5">kort</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Dan ziet hy zyn dolheid en waar het hem <rhyme label="c" type="m" corresp="#s2:l5">schort</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Want zeker het was 'er te <rhyme label="d" type="m">slecht</rhyme>;</l>
        <l id="s2:l9" met="3" type="-+">Dat men met een dronkeman <rhyme label="d" type="m" corresp="#s2:l8">vegt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Za nobele Baasjes schenkter maar <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Daar is in ons <rhyme label="b" type="m">land</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Nog wyn en <rhyme label="b" type="m" corresp="#s3:l2">verstand</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Het is 'er nog maer eender <rhyme label="a" type="m" corresp="#s3:l1">begin</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Maer als 'er die snaek errys nugteren <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En meent 'er te vegten al voor der <rhyme label="c" type="m" corresp="#s3:l5">gewis</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Dan heb ik met hem geen meer <rhyme label="c" type="m" corresp="#s3:l5">derenis</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Maer ga der op 't <rhyme label="d" type="m">onverzienst</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Al in der de Staaten <rhyme label="d" type="m" corresp="#s3:l8">dienst</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dan lag ik 'er met die fles en die <rhyme label="a" type="m">kan</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">En vegt by myn <rhyme label="b" type="m">hiel</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Al op 'er die <rhyme label="b" type="m" corresp="#s4:l2">kiel</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Al tegens die <rhyme label="a" type="m" corresp="#s4:l1">Engelschman</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Bloet was ik dan op 'er die Hollandschen <rhyme label="c" type="m">Vloot</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Ik schoot 'er zyn dikpens vol kruid en vol <rhyme label="c" type="m" corresp="#s4:l5">loot</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Ik klopte die Satanse Engelsman <rhyme label="c" type="m" corresp="#s4:l5">dood</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En toonden hem voor der <rhyme label="d" type="m">gewis</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Wat dat 'er een Hollandsman <rhyme label="d" type="m" corresp="#s4:l8">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
