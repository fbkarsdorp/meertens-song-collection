  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">D'Ed'le Syracusaensche <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Lucia; als 't dorstigh hart <rhyme label="a" type="m" corresp="#s1:l1">jaeght</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Loopt na 't fonteyn; soo van haer <rhyme label="b" type="m">jeught</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Loopt zy na Godt alleen, en <rhyme label="b" type="m" corresp="#s1:l3">deught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als geen Doctoor, noch <rhyme label="a" type="m">Medecijn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Genese kost haer Moeders <rhyme label="a" type="m" corresp="#s2:l1">pijn</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Met haer Moeder, die hierom <rhyme label="b" type="m">steent</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Besoecken Sinte Aechts <rhyme label="b" type="m" corresp="#s2:l3">gebeent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Agatha zeyt: Suster <rhyme label="a" type="m">Lucy</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Waerom begeert ghy doch van <rhyme label="a" type="m" corresp="#s3:l1">my</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Dat ghy u Moeder geve <rhyme label="b" type="m">kont</rhyme>!</l>
        <l id="s3:l4" met="4" type="-+">Lucy mackt haer Moeder <rhyme label="b" type="m" corresp="#s3:l3">gesont</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al haer Vaders goet, haer <rhyme label="a" type="m">erf-deel</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Aen Almisse besteet <rhyme label="a" type="m" corresp="#s4:l1">geheel</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Als haer Vryer 't hoort, die sijn <rhyme label="b" type="m">sin</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Op haer hadt hadt gestelt en sijn <rhyme label="b" type="m" corresp="#s4:l3">min</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En van haer Moeder was <rhyme label="a" type="m">belooft</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat zy van alles was <rhyme label="a" type="m" corresp="#s5:l1">berooft</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">By Paschasius beklaecht <rhyme label="b" type="m">haer</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Van 't Christendom, die <rhyme label="b" type="m" corresp="#s5:l3">Leugenaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Om d' Rechters woorden hart noch <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Satan geen offerhande <rhyme label="a" type="m" corresp="#s6:l1">doet</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Zeyt: weet dat doot, noch lijden <rhyme label="b" type="m">al</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Mijn oyt van Christus scheyden <rhyme label="b" type="m" corresp="#s6:l3">zal</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als Hy hoort: al die zuyver <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat dese d' Heyligen Geest <rhyme label="a" type="m" corresp="#s7:l1">heeft</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Sprack: 'k zal maecken in korte <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dat ghy d' Heylige Geest zijt <rhyme label="b" type="m" corresp="#s7:l3">quijt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Haer brengen wil in't hoere <rhyme label="a" type="m">kot</rhyme>;</l>
        <l id="s8:l2" met="4" type="-+">Onbewegelijck maeckt haer <rhyme label="a" type="m" corresp="#s8:l1">Godt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Ossen aen haer gezeelt, noch <rhyme label="b" type="m">Man</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Noch Paerden haer vertrecke <rhyme label="b" type="m" corresp="#s8:l3">kan</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Al staet in 't vyer 't onnoosel <rhyme label="a" type="m">Lam</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Geen schade lijdt van vyer of <rhyme label="a" type="m" corresp="#s9:l1">vlam</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Een swaert laet steecken door haer <rhyme label="b" type="m">keel</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Voor Godt te sterven socht <rhyme label="b" type="m" corresp="#s9:l3">geheel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hoe Godt de Maeghdom acht en <rhyme label="a" type="m">eert</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Lucia Maeght, de Maeghden <rhyme label="a" type="m" corresp="#s10:l1">leert</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">Bewaert met haer de <rhyme label="b" type="m">suyverheydt</rhyme>;</l>
        <l id="s10:l4" met="4" type="-+">Siet dat 't sterff'lijck nu niet <rhyme label="b" type="m" corresp="#s10:l3">verleydt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Krijght my Lucia door 't <rhyme label="a" type="m">gebedt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dat niet mijn geest of vleesch <rhyme label="a" type="m" corresp="#s11:l1">besmet</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">Beschermt mijn van blintheyt en <rhyme label="b" type="m">brandt</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Krijght vreden en rust voor ons <rhyme label="b" type="m" corresp="#s11:l3">Landt</rhyme>.</l>
      </lg>
    </lg>
  </text>
