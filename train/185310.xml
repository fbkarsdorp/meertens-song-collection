    <melody>O zalig heilig Bethlehem</melody>
  <author>Johannes Stichter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">JErusalem, O schoone <rhyme label="a" type="m">Stadt</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Hoe staet gy Bruyt in mijn <rhyme label="b" type="f">behagen</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Mijn oogen maekt gy die soo <rhyme label="a" type="m" corresp="#s1:l1">nat</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Mijn herte doet gy naer u <rhyme label="b" type="f" corresp="#s1:l2">jagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want boven alle schoonheyt <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Zijt gy van buyten en van <rhyme label="b" type="f">binnen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo dat gy tot n lof <rhyme label="a" type="m" corresp="#s2:l1">ydoon</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Nog mensch’ behoeft, nog <rhyme label="b" type="f" corresp="#s2:l2">Seraphinen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O gulde Zon! ô zilvere <rhyme label="a" type="m">Maen</rhyme>!</l>
        <l id="s3:l2" met="4" type="-+">O Sterr’kens blinkend’ als <rhyme label="b" type="f">Robijnen</rhyme>!</l>
        <l id="s3:l3" met="4" type="-+">Maer die daer binnen eens mogt <rhyme label="a" type="m" corresp="#s3:l1">gaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Duysent Sonnen zoud’ hy vinden <rhyme label="b" type="f" corresp="#s3:l2">schijnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schoon Vaderland, schoon <rhyme label="a" type="m">Vaderland</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Godts aller tiumphansten <rhyme label="b" type="f">Throone</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">In u is rijkdom <rhyme label="a" type="m" corresp="#s4:l1">abondant</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">O zalig die u krijgt tot <rhyme label="b" type="f" corresp="#s4:l2">loone</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">U mueren zijn van Goude <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Bestrooyt met Peerlen zijn u <rhyme label="b" type="f">straten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">In u en is geen <rhyme label="a" type="m" corresp="#s5:l1">Zonneschijn</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Want gy schijnt zelver boven <rhyme label="b" type="f" corresp="#s5:l2">maten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hoe schoon blinkt daer den <rhyme label="a" type="m">Diamant</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Hoe zoetjes lacchen de <rhyme label="b" type="f">Saphieren</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Ook den Carbonkel <rhyme label="a" type="m" corresp="#s6:l1">triumphant</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Geeft ligt in duyzentig <rhyme label="b" type="f" corresp="#s6:l2">manieren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Tapijtzery en isser <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">De motten doense geen <rhyme label="b" type="f">verdriet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dit zijn Jeruzalems <rhyme label="a" type="m" corresp="#s7:l1">Tapijten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Den tijd kanse ook niet <rhyme label="b" type="f" corresp="#s7:l2">verslijten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Og schoon Sion mijn liefste <rhyme label="a" type="m">Lief</rhyme>!</l>
        <l id="s8:l2" met="4" type="-+">Gy hebt berooft alle mijn <rhyme label="b" type="f">zinnen</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Maer desen roof doet my <rhyme label="a" type="m" corresp="#s8:l1">gerief</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Nu zal ik u alleen <rhyme label="b" type="f" corresp="#s8:l2">beminnen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dus roept mijn Ziel: O Heer’! <rhyme label="a" type="m">wanneer</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Wanneer zal ik van hier <rhyme label="b" type="f">scheyden</rhyme>?</l>
        <l id="s9:l3" met="4" type="-+">Na u zoo haek ik even <rhyme label="a" type="m" corresp="#s9:l1">zeer</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Al wil het vleys my neerwaerts <rhyme label="b" type="f" corresp="#s9:l2">leyden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ik ben hier in dit <rhyme label="a" type="m">tranen-dal</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Den hoogen Thabor is daer <rhyme label="b" type="f">boven</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Og! laet mijn met u Vrienden <rhyme label="a" type="m" corresp="#s10:l1">al</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">U Majesteyt eens zalig <rhyme label="b" type="f" corresp="#s10:l2">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
