  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ELck heeft zijn byzonder <rhyme label="a" type="f">drijven</rhyme>;</l>
        <l id="s1:l2" met="4" type="+-">Elck heeft zijn byzonder <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Daer zijn geest op werckt en <rhyme label="b" type="m" corresp="#s1:l2">rust</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dien hy gaern het liefst' laet <rhyme label="a" type="f" corresp="#s1:l1">blijven</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Daer hy gaern van spreeckt en <rhyme label="c" type="m">queelt</rhyme>:</l>
        <l id="s1:l6" met="4" type="+-">Elck heeft wat daer hy me'e <rhyme label="c" type="m" corresp="#s1:l5">speelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Van ongoddelijck <rhyme label="a" type="f">vermaken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Zelfs voor ons natuer <rhyme label="b" type="m">verdriet</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Spreken nu mijn rijmen <rhyme label="b" type="m" corresp="#s2:l2">niet</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Maer alleen van zulcke <rhyme label="a" type="f" corresp="#s2:l1">zaken</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Die, in zich noch quaedt noch <rhyme label="c" type="m">goedt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Zijn een speel-tuych in 't <rhyme label="c" type="m" corresp="#s2:l5">gemoedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">D'een heeft lust in ver te <rhyme label="a" type="f">varen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">D'ander koestert hond' of <rhyme label="b" type="m">paerdt</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Dees doorgrondt der dingen <rhyme label="b" type="m" corresp="#s3:l2">aerdt</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die bemint gezang en <rhyme label="a" type="f" corresp="#s3:l1">snaren</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Zommigh vogel-vangt en <rhyme label="c" type="m">vischt</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">Menigh stoockt en <rhyme label="c" type="m" corresp="#s3:l5">alchimist</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hier bemintmen fraeye <rhyme label="a" type="f">boecken</rhyme>;</l>
        <l id="s4:l2" met="4" type="+-">Ginder, 't mooye <rhyme label="b" type="m">huysgeraedt</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Daer, een nieuwe-tijngkjes <rhyme label="b" type="m" corresp="#s4:l2">praet</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Elders, 't diepe <rhyme label="a" type="f" corresp="#s4:l1">onderzoecken</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Overals, of dit of <rhyme label="c" type="m">dat</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">Nergens, ofmen mintter <rhyme label="c" type="m" corresp="#s4:l5">wat</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Uws gebuermans lust is <rhyme label="a" type="f">tuynen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Of te zien op kruyden <rhyme label="b" type="m">kracht</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">U vermaeck is, op de <rhyme label="b" type="m" corresp="#s5:l2">jacht</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Of met fret en net in <rhyme label="a" type="f" corresp="#s5:l1">duynen</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Rijmpjes maken, is het <rhyme label="c" type="m">Mijn</rhyme>:</l>
        <l id="s5:l6" met="4" type="+-">Met een woordt: Elck heeft het <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Elck nochtans heeft wel te <rhyme label="a" type="f">letten</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Op zijn eygen Dat of <rhyme label="b" type="m">Dit</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Waer, en Hoe zijn popjen <rhyme label="b" type="m" corresp="#s6:l2">zit</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Goedt-noch-quaedt heeft me'e zijn <rhyme label="a" type="f" corresp="#s6:l1">wetten</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Vraeght ghy watze zijn? In 't <rhyme label="c" type="m">Kort</rhyme>:</l>
        <l id="s6:l6" met="4" type="+-">Dat de Pop geen Afgodt <rhyme label="c" type="m" corresp="#s6:l5">wordt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'t Popjen kan een Afgodt <rhyme label="a" type="f">teelen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Als een al te grooten <rhyme label="b" type="m">waen</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Tot de lust wordt <rhyme label="b" type="m" corresp="#s7:l2">toegedaen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Daer gaet Spel dan boven <rhyme label="a" type="f" corresp="#s7:l1">spelen</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Daer wordt pleyster-plaets, <rhyme label="c" type="m">verblijf</rhyme>;</l>
        <l id="s7:l6" met="4" type="+-">En het lust-paerdt draeft te <rhyme label="c" type="m" corresp="#s7:l5">stijf</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Neen. het maghze wel <rhyme label="a" type="f">verquicken</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Maer geen Heer zijn van <rhyme label="b" type="m">Natuer</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">Al te veel, heeft quaden <rhyme label="b" type="m" corresp="#s8:l2">duer</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Maer moet alle dingen <rhyme label="a" type="f" corresp="#s8:l1">schicken</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">'t Popj' is zoet, doch te <rhyme label="c" type="m">gering</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Voor het hert, zoo e'elen <rhyme label="c" type="m" corresp="#s8:l5">ding</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Dan heeft lust het hert <rhyme label="a" type="f">bezeten</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Alsmen 't hem zoo veer <rhyme label="b" type="m">in-ruymt</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Datmen daer door yet <rhyme label="b" type="m" corresp="#s9:l2">verzuymt</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Dat van Godt ons is <rhyme label="a" type="f" corresp="#s9:l1">geheeten</rhyme>;</l>
        <l id="s9:l5" met="4" type="+-">Of veraerdt, en valt tot <rhyme label="c" type="m">yet</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Dat ons d'Opper-heer <rhyme label="c" type="m" corresp="#s9:l5">verbiedt</rhyme>:</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Alsmen 't popjen van zijn <rhyme label="a" type="f">lusten</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Tot verdriet zijns naestens <rhyme label="b" type="m">heeft</rhyme>:</l>
        <l id="s10:l3" met="4" type="+-">Alsmen daer door aenstoot <rhyme label="b" type="m" corresp="#s10:l2">geeft</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Of bedroeft en doet <rhyme label="a" type="f" corresp="#s10:l1">ontrusten</rhyme>:</l>
        <l id="s10:l5" met="4" type="+-">Alsmer niet me'e speelt, maer <rhyme label="c" type="m">praelt</rhyme></l>
        <l id="s10:l6" met="4" type="+-">En zijns eer-zuchts stof uyt <rhyme label="c" type="m" corresp="#s10:l5">haelt</rhyme>:</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Alsm' een ander niet magh <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Dieder juyst geen zoet in <rhyme label="b" type="m">vindt</rhyme>;</l>
        <l id="s11:l3" met="4" type="+-">Of die diergelijck <rhyme label="b" type="m" corresp="#s11:l2">bemint</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Gaet belast'ren of <rhyme label="a" type="f" corresp="#s11:l1">benijden</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">En (als of 't wat zonders <rhyme label="c" type="m">waer</rhyme>)</l>
        <l id="s11:l6" met="4" type="+-">D'een den and'ren valt in 't <rhyme label="c" type="m" corresp="#s11:l5">haer</rhyme>:</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Alsmer 't gene dat op <rhyme label="a" type="f">aerde</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Alderkost'lijckst wezen <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Heel, of zoo veel me'e <rhyme label="b" type="m" corresp="#s12:l2">verdoet</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Datmen niet houdt om, na <rhyme label="a" type="f" corresp="#s12:l1">waerde</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Wel en grondigh te <rhyme label="c" type="m">verstaen</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Hoemen wis tot Godt zal <rhyme label="c" type="m" corresp="#s12:l5">gaen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Alsm' om lusts verlies gaet <rhyme label="a" type="f">quijnen</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Of zoo ernstigh is <rhyme label="b" type="m">bedroeft</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Als om 't geen men nood'lijck <rhyme label="b" type="m" corresp="#s13:l2">hoeft</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">En noch troost noch rust kan <rhyme label="a" type="f" corresp="#s13:l1">vijnen</rhyme></l>
        <l id="s13:l5" met="4" type="+-">Voormen dat, of immers <rhyme label="c" type="m">yet</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Diesgelijcks in plaetze, <rhyme label="c" type="m" corresp="#s13:l5">ziet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">'t Hert is 't roer van 's Menschen <rhyme label="a" type="f">daden</rhyme>:</l>
        <l id="s14:l2" met="4" type="+-">Daer magh geen ding stuerman <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">'t Zy met wat inzicht of <rhyme label="b" type="m" corresp="#s14:l2">schijn</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Dan begeert' om zich t' <rhyme label="a" type="f" corresp="#s14:l1">ont-quaden</rhyme></l>
        <l id="s14:l5" met="4" type="+-">En door Goddelijcke <rhyme label="c" type="m">Deuchdt</rhyme></l>
        <l id="s14:l6" met="4" type="+-">In te gaen in Godes <rhyme label="c" type="m" corresp="#s14:l5">vreuchdt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Die begeert' moet boven <rhyme label="a" type="f">drijven</rhyme>;</l>
        <l id="s15:l2" met="4" type="+-">Daer moet 't hert me'e zijn door-zult <rhyme label="b" type="m">'t</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">'t Ander wordt somtijdts <rhyme label="b" type="m" corresp="#s15:l2">geduld't</rhyme>.</l>
        <l id="s15:l4" met="4" type="+-">Maer en macher niet <rhyme label="a" type="f" corresp="#s15:l1">verblijven</rhyme>.</l>
        <l id="s15:l5" met="4" type="+-">Een is noodigh. Een <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Moet in 't Hoogh; de rest, <rhyme label="c" type="m" corresp="#s15:l5">bene'en</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Iuyste schalen wegen <rhyme label="a" type="f">effen</rhyme>.</l>
        <l id="s16:l2" met="4" type="+-">Vaste voet schrickt nooyt van 't <rhyme label="b" type="m">padt</rhyme>.</l>
        <l id="s16:l3" met="4" type="+-">'t Wijze hert weet Hoe en <rhyme label="b" type="m" corresp="#s16:l2">Wat</rhyme>.</l>
        <l id="s16:l4" met="4" type="+-">Zaligh die de Maet kan <rhyme label="a" type="f" corresp="#s16:l1">treffen</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">En de Pop daer hy me'e <rhyme label="c" type="m">speelt</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Maeckt tot een leerachtigh <rhyme label="c" type="m" corresp="#s16:l5">Beeldt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
