    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Pieter van Gelre</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SInght nu met vreucht, in't aertsche <rhyme label="a" type="m">dal</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Want Christus die is nu <rhyme label="b" type="f">verresen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En heeft ons oock te samen <rhyme label="a" type="m" corresp="#s1:l1">al</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Door sijnen bitt'ren doodt <rhyme label="b" type="f" corresp="#s1:l2">ghenesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met klaerheyt ende groote <rhyme label="a" type="m">macht</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Staet op den Heere der <rhyme label="b" type="f">heyrscharen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En doet vervaren al de <rhyme label="a" type="m" corresp="#s2:l1">wacht</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Die hem wel meynden te <rhyme label="b" type="f" corresp="#s2:l2">bewaren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De doot die heeft hy nu <rhyme label="a" type="m">ghedoot</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ghebroocken heeft hy onse <rhyme label="b" type="f">banden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">En voorts gebracht uyt alle <rhyme label="a" type="m" corresp="#s3:l1">noot</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Door sijne Goddelijcke <rhyme label="b" type="f" corresp="#s3:l2">handen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nu heeft den rechten David <rhyme label="a" type="m">cloeck</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Den Reuse Sathan <rhyme label="b" type="f">overwonnen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Nu leyt Phar'o met sijn <rhyme label="a" type="m" corresp="#s4:l1">ghevloeck</rhyme></l>
        <l id="s4:l4" met="4" type="-+">In't Meyr versmacht, heel <rhyme label="b" type="f" corresp="#s4:l2">overronnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy heeft verheven sijn <rhyme label="a" type="m">Basuyn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Sy vlessen heeft hy tsaem <rhyme label="b" type="f">ghesmeten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Iericho schut, de mueren <rhyme label="a" type="m" corresp="#s5:l1">kuyn</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Legghen neervelt, en gans <rhyme label="b" type="f" corresp="#s5:l2">doorspleeten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Scheurt Helsche Poorten met <rhyme label="a" type="m">ghedruys</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Scheurt altesaem oock ras van <rhyme label="b" type="f">eene</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Christus die comt nu met sijn <rhyme label="a" type="m" corresp="#s6:l1">Cruys</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Sijn vrienden haelen wt <rhyme label="b" type="f" corresp="#s6:l2">gheweene</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Sijt dan verheught, o Adam, <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Die eewelijck had moeten <rhyme label="b" type="f">sterven</rhyme></l>
        <l id="s7:l3" met="4" type="-+">En wy door u, maer nu seer <rhyme label="a" type="m" corresp="#s7:l1">bly</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Moghen wy peys en vreed' <rhyme label="b" type="f" corresp="#s7:l2">verwerven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dus Syons Dochters hebt doch <rhyme label="a" type="m">nae</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dees David Geestelijck <rhyme label="b" type="f">verlanghen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En Singht met vreught, <rhyme label="a" type="m" corresp="#s8:l1">Alleluia</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Om hem soo vrolijck te <rhyme label="b" type="f" corresp="#s8:l2">ontvanghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
