  <author>Jacob Janszoon Colevelt, A. Pietersz. Craen, Matthijs van Velden, Jan Robbertsz</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">T Vrolijck Ghevogelt' sich <rhyme label="a" type="m">verheught</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Nu het begint te <rhyme label="b" type="f">daghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Met uytgelaten sangh en <rhyme label="a" type="m" corresp="#s1:l1">vreught</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wie sal de bootschap <rhyme label="b" type="f" corresp="#s1:l2">draghen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wie sal dees lieve bootschap <rhyme label="a" type="m">doen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Aen die, die ick <rhyme label="b" type="f">beminne</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Dat hy by 't ruysent beeckje <rhyme label="a" type="m" corresp="#s2:l1">groen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van bladen my sal <rhyme label="b" type="f" corresp="#s2:l2">vinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick gaf dees eycken-schaduw <rhyme label="a" type="m">koel</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Niet voor de pracht van <rhyme label="b" type="f">Princen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">De grootste Koningh voor mijn <rhyme label="a" type="m" corresp="#s3:l1">boel</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Soud ick niet illen <rhyme label="b" type="f" corresp="#s3:l2">winschen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Bedouwde bloemtjens vers en <rhyme label="a" type="m">groen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En kruydjes <rhyme label="b" type="f">onbetreden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Kunnen my meer geneughts aen <rhyme label="a" type="m" corresp="#s4:l1">doen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als 't <rhyme label="b" type="f" corresp="#s4:l2">Hofs-vermakelijckheden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dit over-schoone bosjen <rhyme label="a" type="m">dicht</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dees aengename <rhyme label="b" type="f">dalen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ruyld' ick niet om 't verweent <rhyme label="a" type="m" corresp="#s5:l1">gesicht</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van 's Koninckx preutse <rhyme label="b" type="f" corresp="#s5:l2">zalen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">De stamme van de Linde <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s6:l2" met="3" type="-+">De pylaers van ons <rhyme label="b" type="f">hoven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die over 't hooghe <rhyme label="a" type="m" corresp="#s6:l1">welfselkijn</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Gaet alle pracht te <rhyme label="b" type="f" corresp="#s6:l2">boven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wy leven in dit eensaem <rhyme label="a" type="m">wout</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In <rhyme label="b" type="f">onbekommertheden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Als 't kleyn gevogelt, 't welck hem <rhyme label="a" type="m" corresp="#s7:l1">hout</rhyme></l>
        <l id="s7:l4" met="3" type="-+">In kleynheyt wel te <rhyme label="b" type="f" corresp="#s7:l2">vreden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Want in dit onbesorghde <rhyme label="a" type="m">velt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Geen ongeneught wy <rhyme label="b" type="f">dencken</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Noch 's Hofs wellusten ons niet <rhyme label="a" type="m" corresp="#s8:l1">quelt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Of nydighe'en ons <rhyme label="b" type="f" corresp="#s8:l2">krencken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
