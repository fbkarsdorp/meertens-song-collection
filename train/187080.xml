  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Een Boer en Heer en <rhyme label="a" type="m">Edelman</rhyme>.</l>
        <l id="s1:l2" met="4" type="-+">Die dronken samen eens een <rhyme label="a" type="m" corresp="#s1:l1">kan</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Het was by den Boer <rhyme label="b" type="f">verhaelen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Den Burger die riep aen de <rhyme label="c" type="m">Meid</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Stond met den Ridder aen haer <rhyme label="c" type="m" corresp="#s1:l4">sy</rhyme>!</l>
        <l id="s1:l6" met="3" type="-+">Den Boer sal 't <rhyme label="b" type="f" corresp="#s1:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als van der noot van Pruyse <rhyme label="a" type="m">sprak</rhyme>;</l>
        <l id="s2:l2" met="4" type="-+">En sag dat hy wel met <rhyme label="a" type="m" corresp="#s2:l1">gemak</rhyme>!</l>
        <l id="s2:l3" met="3" type="-+">Ons Vryheid en <rhyme label="b" type="f">Cabalen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Wegjagen kon, hy zwoer en <rhyme label="c" type="m">smyt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Hy sag de saek daer onder <rhyme label="c" type="m" corresp="#s2:l4">lyt</rhyme>;</l>
        <l id="s2:l6" met="3" type="-+">Den Boer sal 't <rhyme label="b" type="f" corresp="#s2:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ik sy laest aen een <rhyme label="a" type="m">Cappesien</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ons saeken Pater soo ik <rhyme label="a" type="m" corresp="#s3:l1">sien</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Beginne neer te <rhyme label="b" type="f">daelen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Wat last voor 't Land en wat <rhyme label="c" type="m">verdriet</rhyme>;</l>
        <l id="s3:l5" met="4" type="-+">Het sy dat raekt ons klooster <rhyme label="c" type="m" corresp="#s3:l4">niet</rhyme>!</l>
        <l id="s3:l6" met="3" type="-+">Den Boer die sal 't <rhyme label="b" type="f" corresp="#s3:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Pastoor van 't Dorp nevens <rhyme label="a" type="m">myn</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dronk op een tyd een glaesje <rhyme label="a" type="m" corresp="#s4:l1">Wyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hy begon eens op te <rhyme label="b" type="f">haelen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Van Geld gestuurt uit het <rhyme label="c" type="m">Congres</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Den Pastoor sy hael nog een <rhyme label="c" type="m" corresp="#s4:l4">Fles</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Den Boer die sal 't <rhyme label="b" type="f" corresp="#s4:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ik sy laestmael aen een <rhyme label="a" type="m">Prelaet</rhyme>!</l>
        <l id="s5:l2" met="4" type="-+">Ons Arme is in een slagte <rhyme label="a" type="m" corresp="#s5:l1">staet</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Schoen de Vent niet doet als <rhyme label="b" type="f">dwalen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat kost soo meenig Man syn <rhyme label="c" type="m">Geld</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Ag sy den Vent was dat <rhyme label="c" type="m" corresp="#s5:l4">getelt</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Den Boer die sal 't <rhyme label="b" type="f" corresp="#s5:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">'t Is nog geen langen tijd <rhyme label="a" type="m">geleen</rhyme>!</l>
        <l id="s6:l2" met="4" type="-+">Dat iemand seide soo het <rhyme label="a" type="m" corresp="#s6:l1">scheen</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Wie d'onkoste moest <rhyme label="b" type="f">betalen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Hy riep uit in 't volle <rhyme label="c" type="m">Congres</rhyme>;</l>
        <l id="s6:l5" met="4" type="-+">Wat is dat een Millioen of <rhyme label="c" type="m" corresp="#s6:l4">ses</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Den Boer die sal 't <rhyme label="b" type="f" corresp="#s6:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De vent in 't harnas warm van <rhyme label="a" type="m">kop</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Trok laestmael met de Boeren <rhyme label="a" type="m" corresp="#s7:l1">op</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Hy wou gaen <rhyme label="b" type="f">seegenpralen</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Hy bleef nogtans van agter <rhyme label="c" type="m">staen</rhyme>!</l>
        <l id="s7:l5" met="4" type="-+">Hy peinsde wil de saek niet <rhyme label="c" type="m" corresp="#s7:l4">gaen</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Den Boer die sal 't <rhyme label="b" type="f" corresp="#s7:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Van heupe die het Geld <rhyme label="a" type="m">bemint</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Sag dat sijn Moolen door fout van <rhyme label="a" type="m" corresp="#s8:l1">wint</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Begon soo slegt te <rhyme label="b" type="f">maelen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Hy stuurt na Londen in een <rhyme label="c" type="m">bank</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Een paer Milioene hy sy soo <rhyme label="c" type="m" corresp="#s8:l4">lank</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Den Boer die sal 't <rhyme label="b" type="f" corresp="#s8:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Komt Leopoldus in ons <rhyme label="a" type="m">Land</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">De Staten sonder <rhyme label="a" type="m" corresp="#s9:l1">tegenstand</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Die sullen wy in gaen <rhyme label="b" type="f">haelen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">En seggen met <rhyme label="c" type="m">vermeerdering</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Heeren vraegt ons geen <rhyme label="c" type="m" corresp="#s9:l4">Rekening</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Den Boer die sal 't <rhyme label="b" type="f" corresp="#s9:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Vrienden den digter van dit <rhyme label="a" type="m">Lied</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">'t Is een vonkkist en <rhyme label="a" type="m" corresp="#s10:l1">deugeniet</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">Den Duyvel sal hem <rhyme label="b" type="f">haelen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Was van der Meers niet <rhyme label="c" type="m">afgekeurt</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">En van der Vonk in 't kort <rhyme label="c" type="m" corresp="#s10:l4">gebeurt</rhyme>;</l>
        <l id="s10:l6" met="3" type="-+">Den Boer sal niet <rhyme label="b" type="f" corresp="#s10:l3">betalen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
