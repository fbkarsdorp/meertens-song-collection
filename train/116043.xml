  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WYl de zonne met haar <rhyme label="a" type="f">straalen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Naar gewoont we'er is gaan <rhyme label="a" type="f" corresp="#s1:l1">daalen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En zich ellik nu ter <rhyme label="b" type="m">tijd</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Tot de rust en slaap <rhyme label="b" type="m" corresp="#s1:l3">bereid</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Moet ik U mijn God noch <rhyme label="c" type="f">looven</rhyme></l>
        <l id="s1:l6" met="4" type="+-">U mijn Kooning van hier <rhyme label="c" type="f" corresp="#s1:l5">booven</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Met mijn stem door dit <rhyme label="d" type="m">gedicht</rhyme>.</l>
        <l id="s1:l8" met="4" type="+-">U te looven is mijn <rhyme label="d" type="m" corresp="#s1:l7">plicht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want Gy hebt my, Heer! <rhyme label="a" type="f">gegeeven</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Dit naturelijke <rhyme label="a" type="f" corresp="#s2:l1">leeven</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Door uw' kracht ik my <rhyme label="b" type="m">verrep</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">En ook heb al wat ik <rhyme label="b" type="m" corresp="#s2:l3">heb</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Daar-om wil ik all' mijn <rhyme label="c" type="f">leeden</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Tot uw' eer en dienst <rhyme label="c" type="f" corresp="#s2:l5">besteeden</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Iaa gelijk een <rhyme label="d" type="m">offer-hand</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Stellen, Heer! in uwe <rhyme label="d" type="m" corresp="#s2:l7">hand</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Daar-om laat toch op my <rhyme label="a" type="f">daalen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Uwes geestes vuur'ge <rhyme label="a" type="f" corresp="#s3:l1">straalen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat ik uw wil kennen <rhyme label="b" type="m">mag</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En die klaar zien als den <rhyme label="b" type="m" corresp="#s3:l3">dag</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Ik hoop om de dood noch 't <rhyme label="c" type="f">leeven</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Nimmer my oit af te <rhyme label="c" type="f" corresp="#s3:l5">geeven</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Van uw wil of uw <rhyme label="d" type="m">gebod</rhyme></l>
        <l id="s3:l8" met="4" type="+-">O! mijn Koonink en mijn <rhyme label="d" type="m" corresp="#s3:l7">God</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'s Nachts in koele <rhyme label="a" type="f">zoomer-tijden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Komt Gy 't teer gewas <rhyme label="a" type="f" corresp="#s4:l1">verblijden</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Met een <rhyme label="b" type="m">Heemel-laafenis</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Van dauws dropjens koel en <rhyme label="b" type="m" corresp="#s4:l3">fris</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">'t Valt met paar'len op de <rhyme label="c" type="f">blaaden</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">Heer! laat ik van uw <rhyme label="c" type="f" corresp="#s4:l5">genaaden</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Meede werden zoo <rhyme label="d" type="m">besproeid</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Dat mijn ziel in deugden <rhyme label="d" type="m" corresp="#s4:l7">groeid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Zonne der <rhyme label="a" type="f">gerechtigheeden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Blijf niet langer dus <rhyme label="a" type="f" corresp="#s5:l1">beneeden</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Maar wild op-gaan in mijn <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat mijn ziel verlichtet <rhyme label="b" type="m" corresp="#s5:l3">werd</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Dan kan ik my recht <rhyme label="c" type="f">begeeven</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Tot dat zoet in-wendig <rhyme label="c" type="f" corresp="#s5:l5">leeven</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Om met U te worden <rhyme label="d" type="m">een</rhyme></l>
        <l id="s5:l8" met="4" type="+-">En zeer wonderbaar <rhyme label="d" type="m" corresp="#s5:l7">gemeen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Daar-om Heer trek mijn <rhyme label="a" type="f">gedachten</rhyme></l>
        <l id="s6:l2" met="4" type="+-">In de still' eenzaame <rhyme label="a" type="f" corresp="#s6:l1">nachten</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dat zy vry en <rhyme label="b" type="m">on-beswaard</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">On-belemmerd van de <rhyme label="b" type="m" corresp="#s6:l3">aard</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Tot u stijgen in den <rhyme label="c" type="f">Heemel</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">By het zoet en lief <rhyme label="c" type="f" corresp="#s6:l5">geweemel</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Dat vol dienst sweefd voor uw <rhyme label="d" type="m">Troon</rhyme></l>
        <l id="s6:l8" met="4" type="+-">En den Troon van uwen <rhyme label="d" type="m" corresp="#s6:l7">Zoon</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Daar die vroom zaal'ge <rhyme label="a" type="f">zielen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Zig by leegioenen <rhyme label="a" type="f" corresp="#s7:l1">knielen</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Voor haar God zijn <rhyme label="b" type="m">Majestait</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Met een groot <rhyme label="b" type="m" corresp="#s7:l3">eer-biedigheid</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Daar die wakk're <rhyme label="c" type="f">Heemelingen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Heilig, Heilig, Heilig <rhyme label="c" type="f" corresp="#s7:l5">zingen</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Voor uw Troon en glans en <rhyme label="d" type="m">licht</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Leggende op haar <rhyme label="d" type="m" corresp="#s7:l7">aangezicht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Woud Gy eens mijn geest daar <rhyme label="a" type="f">trekken</rhyme></l>
        <l id="s8:l2" met="4" type="+-">O! hoe zou my dat <rhyme label="a" type="f" corresp="#s8:l1">op-wekken</rhyme>!</l>
        <l id="s8:l3" met="4" type="+-">Dan zoo zou my deeze <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Zoeter weezen als ik <rhyme label="b" type="m" corresp="#s8:l3">dacht</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Zoeter weezen als de <rhyme label="c" type="f">daagen</rhyme>.</l>
        <l id="s8:l6" met="4" type="+-">O! hoe zou my dat <rhyme label="c" type="f" corresp="#s8:l5">behaagen</rhyme>!</l>
        <l id="s8:l7" met="4" type="+-">Iaa misschien dat ook mijn <rhyme label="d" type="m">tong</rhyme></l>
        <l id="s8:l8" met="4" type="+-">Mee in lof en dank <rhyme label="d" type="m" corresp="#s8:l7">ontsprong</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">En ik mijne stem zou <rhyme label="a" type="f">meng'len</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Onder 't zingen van de <rhyme label="a" type="f" corresp="#s9:l1">Eng'len</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">En naa-neurien haar <rhyme label="b" type="m">toon</rhyme></l>
        <l id="s9:l4" met="4" type="+-">En mee knielen voor Uw <rhyme label="b" type="m" corresp="#s9:l3">Troon</rhyme>:</l>
        <l id="s9:l5" met="4" type="+-">Doch, o Heer! kan 't nu niet <rhyme label="c" type="f">weezen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Als het maar mag zijn naa <rhyme label="c" type="f" corresp="#s9:l5">deezen</rhyme></l>
        <l id="s9:l7" met="4" type="+-">Dan heb ik mijn 's herten <rhyme label="d" type="m">wens</rhyme></l>
        <l id="s9:l8" met="4" type="+-">En ben een gelukkig <rhyme label="d" type="m" corresp="#s9:l7">Mensch</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Kom ik schielijk dan te <rhyme label="a" type="f">sterven</rhyme></l>
        <l id="s10:l2" met="4" type="+-">'t Eeuwig leeven zal ik <rhyme label="a" type="f" corresp="#s10:l1">erven</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">En zijn in uw <rhyme label="b" type="m">Kooning-rijk</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">U onsterffelijk <rhyme label="b" type="m" corresp="#s10:l3">gelijk</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">In uw Zoons en uwe <rhyme label="c" type="f">naamen</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Vou ik mijne handen t' <rhyme label="c" type="f" corresp="#s10:l5">zaamen</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">En leg my gerust ter <rhyme label="d" type="m">ne'er</rhyme></l>
        <l id="s10:l8" met="4" type="+-">Onder uwe vlerken. <rhyme label="d" type="m" corresp="#s10:l7">Heer</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
