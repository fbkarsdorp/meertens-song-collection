    <melody>Och ongelukkige dag</melody>
  <author>Jacob Coenraetsz Mayvogel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAer mach mijn Liefste <rhyme label="a" type="m">zijn</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Mijn zieltjen is vol <rhyme label="a" type="m" corresp="#s1:l1">pijn</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Door 't missen van haer soet <rhyme label="a" type="m" corresp="#s1:l1">aenschijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Waer blijft mijn Ziels-Godin soo <rhyme label="b" type="m">langh</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">'t Vertoeven maeckt mijn Hertje <rhyme label="b" type="m" corresp="#s1:l4">bangh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Of soud mijn waerde <rhyme label="a" type="m">Bruyt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wel maken een <rhyme label="a" type="m" corresp="#s2:l1">besluyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En sien na 's werelts rijckdom <rhyme label="a" type="m" corresp="#s2:l1">uyt</rhyme>?</l>
        <l id="s2:l4" met="4" type="-+">En laten in de <rhyme label="b" type="m">duysternis</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">De deught die soo gepresen <rhyme label="b" type="m" corresp="#s2:l4">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O Gulden-Son! <rhyme label="a" type="m">verklaert</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Verklaert en <rhyme label="a" type="m" corresp="#s3:l1">openbaert</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">U Lief, die nu seer is <rhyme label="a" type="m" corresp="#s3:l1">beswaert</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">De stralen van u soet <rhyme label="b" type="m">gesicht</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat is mijn troost en eenigh <rhyme label="b" type="m" corresp="#s3:l4">licht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O pronck van 's <rhyme label="a" type="m">werelts-vreught</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wat zijt ghy voor de <rhyme label="a" type="m" corresp="#s4:l1">deught</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Een vyant vol van <rhyme label="a" type="m" corresp="#s4:l1">ongeneught</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ick vrees hier in mijn <rhyme label="b" type="m">eenigheyt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dat haer de Rijckdom heeft <rhyme label="b" type="m" corresp="#s4:l4">verleyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ach Ziels-Fonteyn! ick <rhyme label="a" type="m">wacht</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ick wacht met droeve <rhyme label="a" type="m" corresp="#s5:l1">klacht</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Lijtsamigh tot de nare <rhyme label="a" type="m" corresp="#s5:l1">nacht</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">De hoop is troost in lijdens <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Want trouwe Liefd' gaet tot de <rhyme label="b" type="m" corresp="#s5:l4">doot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Den Hemel die <rhyme label="a" type="m">ontsluyt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ick roep van blijtschap <rhyme label="a" type="m" corresp="#s6:l1">uyt</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Daer komt mijn Lief, mijn waerde <rhyme label="a" type="m" corresp="#s6:l1">Bruyt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die in dit droevigh <rhyme label="b" type="m">ongeval</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Mijn Zieltje haest vertroosten <rhyme label="b" type="m" corresp="#s6:l4">sal</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Daelt neder uyt den <rhyme label="a" type="m">troon</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En zet een gulden <rhyme label="a" type="m" corresp="#s7:l1">Kroon</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Op mijn Liefs hooft, haer tot een <rhyme label="a" type="m" corresp="#s7:l1">loon</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die Rijckdom, Staet en pracht <rhyme label="b" type="m">versmaet</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Die met de deught na d' Hemel <rhyme label="b" type="m" corresp="#s7:l4">gaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
