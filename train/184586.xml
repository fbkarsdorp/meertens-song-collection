    <tags/>
    <melody>Hoe lig ik hier in deze ellende</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoord toe gy Menschen <rhyme label="a" type="f">allegaare</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die op Maas-Sluys woonagtig <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wat ik u zal in ’t kort <rhyme label="a" type="f" corresp="#s1:l1">verklaare</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">’t Geen is geschied in onzen <rhyme label="b" type="m" corresp="#s1:l2">tijd</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Ende gebeurt in onze <rhyme label="c" type="f">Dagen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Eylaas ’t is wel om te <rhyme label="c" type="f" corresp="#s1:l5">beklagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">In het Iaar als men heeft <rhyme label="a" type="f">geschreven</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Zestien-honderd wild <rhyme label="b" type="m">verstaan</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En een-en-vijftig daar <rhyme label="a" type="f" corresp="#s2:l1">beneven</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Zag men der menig treurig <rhyme label="b" type="m" corresp="#s2:l2">gaan</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Dat zy haar Goed en Bloed <rhyme label="c" type="f">verkooren</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Eylaas in Zee hadden <rhyme label="c" type="f" corresp="#s2:l5">verlooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den vijfden Maand in ’t Iaar <rhyme label="a" type="f">voorschreven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Isser, ’t is waar hoord mijn <rhyme label="b" type="m">bedien</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Een zwaaren Storm-wind <rhyme label="a" type="f" corresp="#s3:l1">op-geheven</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat yder een wel zag <rhyme label="b" type="m" corresp="#s3:l2">geschien</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Maar yder een niet kon <rhyme label="c" type="f">vertellen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Van Zee-varende <rhyme label="c" type="f" corresp="#s3:l5">Boots-gezellen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Zes Schepen hoord na mijn <rhyme label="a" type="f">verklaren</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Zijn gebleven door dit <rhyme label="b" type="m">Onweer</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En gantsch verslonden van de <rhyme label="a" type="f" corresp="#s4:l1">Baren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En heel verbrijdzeld in het <rhyme label="b" type="m" corresp="#s4:l2">Meer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Het Volk dat is ook hier <rhyme label="c" type="f">beneven</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Al t’zamen in d’Zee <rhyme label="c" type="f" corresp="#s4:l5">gebleven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wel Zestig of Zeventig <rhyme label="a" type="f">Zielen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Bleven van deze Schepen <rhyme label="b" type="m">daar</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">De Zee die ging haar al <rhyme label="a" type="f" corresp="#s5:l1">vernielen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En niemand van haar <rhyme label="b" type="m" corresp="#s5:l2">allegaar</rhyme>;</l>
        <l id="s5:l5" met="4" type="-+">En is ’t ontvloden nog <rhyme label="c" type="f">ontkomen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Eylaas een yder mag wel <rhyme label="c" type="f" corresp="#s5:l5">schromen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Een yder is bedroeft in <rhyme label="a" type="f">dezen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">En zeer benauwt in zijn <rhyme label="b" type="m">gemoed</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Voorwaar ’t en kan niet minder <rhyme label="a" type="f" corresp="#s6:l1">wezen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Want oorzaak yder treuren <rhyme label="b" type="m" corresp="#s6:l2">doet</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">En heeft voorwaar wel dubbel <rhyme label="c" type="f">reden</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Zijn klagt te doen met <rhyme label="c" type="f" corresp="#s6:l5">bitterheden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Elk een die klaagt met droeve <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Zo bitter als hy immers <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Wie zal de kost nu voor ons <rhyme label="a" type="f" corresp="#s7:l1">winnen</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Nu dat wy leven zonder <rhyme label="b" type="m" corresp="#s7:l2">Man</rhyme>?</l>
        <l id="s7:l5" met="4" type="-+">Voor wie kan dit dog wonder <rhyme label="c" type="f">schijne</rhyme>?</l>
        <l id="s7:l6" met="4" type="-+">Want yder een die mist de <rhyme label="c" type="f" corresp="#s7:l5">zijne</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Beveeld u Man in Godes <rhyme label="a" type="f">hande</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Gy Weduwen die droevig <rhyme label="b" type="m">schreyd</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Hy zal u Ween <rhyme label="a" type="f" corresp="#s8:l1">menigerhandt</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Verhooren, zo hy heeft <rhyme label="b" type="m" corresp="#s8:l2">gezeyd</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Hy is en blijft u trouwen <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Verblijd u hier in alle <rhyme label="c" type="f" corresp="#s8:l5">gader</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Gelijk als hy gaat zorge <rhyme label="a" type="f">drage</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Ia voor het alderkleynste <rhyme label="b" type="m">Vee</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Zo zal hy u die zijt <rhyme label="a" type="f" corresp="#s9:l1">verslage</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Ook doen en nog veel meerder <rhyme label="b" type="m" corresp="#s9:l2">mee</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Hy zal gewis zijn Woord <rhyme label="c" type="f">na-komen</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Want hy draagt zorge voor de <rhyme label="c" type="f" corresp="#s9:l5">Vroomen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Denkt dat den Heer u Man <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Veel liever heeft gehad als <rhyme label="b" type="m">gy</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Want hy nu in een beter <rhyme label="a" type="f" corresp="#s10:l1">leven</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Gevoerd zal werden, zijt dan <rhyme label="b" type="m" corresp="#s10:l2">bly</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Beveeld u Godt en Heer de <rhyme label="c" type="f">zaake</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Die zal het wel ten beste <rhyme label="c" type="f" corresp="#s10:l5">maaken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Denkt hoe gy paarde met u <rhyme label="a" type="f">beyde</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">En u vergaarden in de <rhyme label="b" type="m">Trouw</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Zo moest gy nogtans een-maal <rhyme label="a" type="f" corresp="#s11:l1">scheyde</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">En wist dat het gebeuren <rhyme label="b" type="m" corresp="#s11:l2">zouw</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">Oorlof troost u te regt hier <rhyme label="c" type="f">mede</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">En leeft voortaan in rust en <rhyme label="c" type="f" corresp="#s11:l5">vreede</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
