    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody>Ik ben een arme pelgrim hier</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">COmt tot ons heyligh <rhyme label="a" type="m">Gheest</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt in ons herten <rhyme label="b" type="f">dalen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ontsteeckt dat <rhyme label="a" type="m" corresp="#s1:l1">aldermeest</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Met uwe <rhyme label="b" type="f" corresp="#s1:l2">stralen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want ghy waerachtich <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Een vier en Godt <rhyme label="b" type="f">almachtich</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die ons ziele <rhyme label="a" type="m" corresp="#s2:l1">verblijt</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Met liefde <rhyme label="b" type="f" corresp="#s2:l2">crachtich</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy zijt die schoon <rhyme label="a" type="m">fonteyn</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Oorspronck van alle <rhyme label="b" type="f">deughden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Vol van ghenuchte <rhyme label="a" type="m" corresp="#s3:l1">reyn</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Een Godt der <rhyme label="b" type="f" corresp="#s3:l2">vreughden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Door u liefde <rhyme label="a" type="m">verwermt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ons hert tot alle <rhyme label="b" type="f">stonden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Soo worden wy <rhyme label="a" type="m" corresp="#s4:l1">beschermt</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Van alle <rhyme label="b" type="f" corresp="#s4:l2">sonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Verdrijft van ons het <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Blijft ons by vroegh en <rhyme label="b" type="f">spade</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gheeft graci, hulp en <rhyme label="a" type="m" corresp="#s5:l1">raet</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Door u <rhyme label="b" type="f" corresp="#s5:l2">ghenade</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Aensiet ons in dit <rhyme label="a" type="m">dal</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Met u bermhertighe <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wilt druck en tranen <rhyme label="a" type="m" corresp="#s6:l1">al</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Met pays <rhyme label="b" type="f" corresp="#s6:l2">afdrooghen</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Op dat wy toch hier <rhyme label="a" type="m">naer</rhyme></l>
        <l id="s7:l2" met="3" type="-+">V met den Vader <rhyme label="b" type="f">boven</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En Godt den Soon <rhyme label="a" type="m" corresp="#s7:l1">een-paer</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Eens eeuwich <rhyme label="b" type="f" corresp="#s7:l2">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
