  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O JESU! zijt <rhyme label="a" type="m">gegroet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die door u dierbaar <rhyme label="a" type="m" corresp="#s1:l1">bloed</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Met recht nu hebt <rhyme label="b" type="f">verkregen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dien Naem, die alle <rhyme label="c" type="m">naem</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Te boven gaet, en <rhyme label="c" type="m" corresp="#s1:l4">faem</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die noyt en dient <rhyme label="b" type="f" corresp="#s1:l3">verswegen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een Naem met wijs <rhyme label="a" type="m">beleyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van d' Engel Gods <rhyme label="a" type="m" corresp="#s2:l1">voorseyt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Aen Godes waerdste <rhyme label="b" type="f">Moeder</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Een Naem die eer is <rhyme label="c" type="m">waerd</rhyme></l>
        <l id="s2:l5" met="3" type="-+">In Hemel, en op <rhyme label="c" type="m" corresp="#s2:l4">d'Aerd'</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">De Naem van ons' <rhyme label="b" type="f" corresp="#s2:l3">Behoeder</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een Naem, voor welck <rhyme label="a" type="m">bevreest</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Seer is het helsche <rhyme label="a" type="m" corresp="#s3:l1">Beest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Een Naem die hem doet <rhyme label="b" type="f">vluchten</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Een Naem die treuren <rhyme label="c" type="m">doet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Den Draeck, die sijn <rhyme label="c" type="m" corresp="#s3:l4">hooghmoed</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In d'Helle moet <rhyme label="b" type="f" corresp="#s3:l3">besuchten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Een Naem, tot eer van <rhyme label="a" type="m">welck</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sijn knyen moet buygen <rhyme label="a" type="m" corresp="#s4:l1">elck</rhyme></l>
        <l id="s4:l3" met="3" type="-+">In Hemel, en op <rhyme label="b" type="f">Aerde</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">En die hier onder <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">In 't vuur, en felle <rhyme label="c" type="m" corresp="#s4:l4">pijn</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die houden die in <rhyme label="b" type="f" corresp="#s4:l3">waerde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een Naem, wiens kracht <rhyme label="a" type="m">verjaecht</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Den Duyvel <rhyme label="a" type="m" corresp="#s5:l1">onversaeght</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Uyt dien hy heeft <rhyme label="b" type="f">beseten</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Een Naem als suycker <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Een troost van ons <rhyme label="c" type="m" corresp="#s5:l4">gemoed</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die noyt moet zijn <rhyme label="b" type="f" corresp="#s5:l3">vergeten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Een Naem, voorwaer, wiens <rhyme label="a" type="m">kracht</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Soodanigh is, en <rhyme label="a" type="m" corresp="#s6:l1">macht</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat God aen ons wil <rhyme label="b" type="f">geven</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Al wat wy in die <rhyme label="c" type="m">Naem</rhyme></l>
        <l id="s6:l5" met="3" type="-+">(Siet hoe s' is <rhyme label="c" type="m" corresp="#s6:l4">aengenaem</rhyme>)</l>
        <l id="s6:l6" met="3" type="-+">Versoecken in ons <rhyme label="b" type="f" corresp="#s6:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Geen Naem heeft Sonn' noch <rhyme label="a" type="m">Maen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Oyt onder 's Hemels <rhyme label="a" type="m" corresp="#s7:l1">baen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Eerweerdiger <rhyme label="b" type="f">aenschouwen</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Een Naem door welcken <rhyme label="c" type="m">al</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Die zijn op 't aerdtsche <rhyme label="c" type="m" corresp="#s7:l4">dal</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Oock moeten zijn <rhyme label="b" type="f" corresp="#s7:l3">behouwen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Seer groot moet zijn <rhyme label="a" type="m">geacht</rhyme></l>
        <l id="s8:l2" met="3" type="-+">De Naem van die ons <rhyme label="a" type="m" corresp="#s8:l1">tracht</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Gesondt door 't bloed te <rhyme label="b" type="f">maecken</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">'t Welck Hy voor ons <rhyme label="c" type="m">vergiet</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Om dat na dit <rhyme label="c" type="m" corresp="#s8:l4">verdriet</rhyme></l>
        <l id="s8:l6" met="3" type="-+">By God wy souden <rhyme label="b" type="f" corresp="#s8:l3">raecken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Vergeven is ons' <rhyme label="a" type="m">sond</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Door JESUM, die <rhyme label="a" type="m" corresp="#s9:l1">gewondt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Voor ons is, en <rhyme label="b" type="f">besneden</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Ach! siet hoe 't <rhyme label="c" type="m">Opper-goet</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Vergiet sijn Jonge <rhyme label="c" type="m" corresp="#s9:l4">Bloed</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Uyt sijne teere <rhyme label="b" type="f" corresp="#s9:l3">leden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ã´ Jesu, <rhyme label="a" type="m">Opper-Heer</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Och of ick U de <rhyme label="a" type="m" corresp="#s10:l1">eer</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die U betaemt, kon <rhyme label="b" type="f">geven</rhyme>!</l>
        <l id="s10:l4" met="3" type="-+">Voor U, mijn Heer, ick <rhyme label="c" type="m">kniel</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Met hart, met lijf, met <rhyme label="c" type="m" corresp="#s10:l4">ziel</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Soo langh als ick sal <rhyme label="b" type="f" corresp="#s10:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Vergun, dat ick uw' <rhyme label="a" type="m">loff</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Oock in des Hemels <rhyme label="a" type="m" corresp="#s11:l1">Hoff</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Mach, Jesu! eeuwich <rhyme label="b" type="f">singen</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Vergun, dat ick <rhyme label="c" type="m">verheught</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Hier na, met groote <rhyme label="c" type="m" corresp="#s11:l4">vreughd</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">En blyschap, op mach <rhyme label="b" type="f" corresp="#s11:l3">springen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
