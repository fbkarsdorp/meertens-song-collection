  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Vryers die in <rhyme label="a" type="f">dugten</rhyme></l>
        <l id="s1:l2" met="1" type="+-"><rhyme label="a" type="f" corresp="#s1:l1">Zugten</rhyme>,</l>
        <l id="s1:l3" met="1" type="+-"><rhyme label="b" type="f">Klagen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Nagten spilt en <rhyme label="b" type="f" corresp="#s1:l3">dagen</rhyme></l>
        <l id="s1:l5" met="1" type="+-">
          <rhyme label="b" type="f" corresp="#s1:l3">(Plagen</rhyme>
        </l>
        <l id="s1:l6" met="3" type="+-">Voor een fris <rhyme label="c" type="m">gemoed</rhyme>):</l>
        <l id="s1:l7" met="3" type="-+">Verlaat, verlaat uw <rhyme label="d" type="f">treuren</rhyme>,</l>
        <l id="s1:l8" met="2" type="+-">'t Zyn maer <rhyme label="d" type="f" corresp="#s1:l7">leuren</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Die de liefde <rhyme label="c" type="m" corresp="#s1:l6">broed</rhyme>.</l>
        <l id="s1:l10" met="4" type="-+">De wyn die yders hart <rhyme label="e" type="m">verheugt</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Verband   in ons al <rhyme label="e" type="m" corresp="#s1:l10">ongeneugt</rhyme></l>
        <l id="s1:l12" met="1" type="-+">Voor <rhyme label="e" type="m" corresp="#s1:l10">vreugt</rhyme>.</l>
        <l id="s1:l13" met="3" type="+-">Wijn, ô ed'le <rhyme label="f" type="m">wijn</rhyme>,</l>
        <l id="s1:l14" met="2" type="-+">Die ramp en <rhyme label="f" type="m" corresp="#s1:l13">pijn</rhyme></l>
        <l id="s1:l15" met="4" type="-+">En al wat uit de min <rhyme label="g" type="m">ontstaat</rhyme></l>
        <l id="s1:l16" met="4" type="-+">Geneest in die   u vraagd om <rhyme label="g" type="m" corresp="#s1:l15">raad</rhyme>!</l>
        <l id="s1:l17" met="2" type="-+">Door uwen <rhyme label="h" type="m">gloed</rhyme></l>
        <l id="s1:l18" met="3" type="-+">Blaakt yders hart in <rhyme label="i" type="m">lust</rhyme></l>
        <l id="s1:l19" met="1" type="-+">En <rhyme label="i" type="m" corresp="#s1:l18">rust</rhyme>,</l>
        <l id="s1:l20" met="2" type="-+">Dat   mijn <rhyme label="h" type="m" corresp="#s1:l17">gemoed</rhyme></l>
        <l id="s1:l21" met="1" type="-+"><rhyme label="h" type="m" corresp="#s1:l17">Voldoet</rhyme>.</l>
      </lg>
    </lg>
