  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ELck roemt sich hier een <rhyme label="a" type="f">Christen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Een nieu herboren <rhyme label="b" type="m">kindt</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Daer 't hart noch steeckt vol <rhyme label="a" type="f" corresp="#s1:l1">twisten</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Oft al wat hy <rhyme label="b" type="m" corresp="#s1:l2">bemindt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Na eyghen liefde <rhyme label="c" type="m">smaeckt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat op het veerst' <rhyme label="d" type="m">verscheelt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Van dit gheheel <rhyme label="c" type="m" corresp="#s1:l5">volmaeckt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Reyn suyver Hemels <rhyme label="d" type="m" corresp="#s1:l6">beelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het schijnt hier hoogh van <rhyme label="a" type="f">nooden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat elck bewaer sijn <rhyme label="b" type="m">kroon</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dien Christus heeft <rhyme label="a" type="f" corresp="#s2:l1">ghevloden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Doens' hem wierd <rhyme label="b" type="m" corresp="#s2:l2">aenghebo'on</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Want 't was hem veel te <rhyme label="c" type="m">sleght</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Te voeren de <rhyme label="d" type="m">banier</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Daer 't krielt van dol <rhyme label="c" type="m" corresp="#s2:l5">ghevecht</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En bloedigh woest <rhyme label="d" type="m" corresp="#s2:l6">ghetier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Men wil sich wel <rhyme label="a" type="f">verblijen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met Christo in sijn <rhyme label="b" type="m">rijck</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maer voor sijn bitter <rhyme label="a" type="f" corresp="#s3:l1">lijen</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Neemtmen altoos de <rhyme label="b" type="m" corresp="#s3:l2">wijck</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Hoe seecker dat het <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die werden wil als <rhyme label="d" type="m">hy</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Dat leed vervolgh en <rhyme label="c" type="m" corresp="#s3:l5">smaet</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Daer toe den ingangh <rhyme label="d" type="m" corresp="#s3:l6">zy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Elck steunt op sijn <rhyme label="a" type="f">weldaden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Eer sy hun komen <rhyme label="b" type="m">t'huys</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Maer zijn terstont <rhyme label="a" type="f" corresp="#s4:l1">verladen</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Al met sijn Heyligh <rhyme label="b" type="m" corresp="#s4:l2">cruys</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Daer doch (al schijnt het <rhyme label="c" type="m">vreemt</rhyme>)</l>
        <l id="s4:l6" met="3" type="-+">Sijn cruys ons 't cruys <rhyme label="d" type="m">verjaeght</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Voor hy het op hem <rhyme label="c" type="m" corresp="#s4:l5">neemt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En dan ghewilligh <rhyme label="d" type="m" corresp="#s4:l6">draeght</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo graegh men al sijn <rhyme label="a" type="f">zeghen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Sijn troost, sijn heyl <rhyme label="b" type="m">gheniet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Soo staet sijn smaet ons <rhyme label="a" type="f" corresp="#s5:l1">teghen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Waer door hy 't ons <rhyme label="b" type="m" corresp="#s5:l2">aenbiet</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Ten leven in te <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Is al ons herten <rhyme label="d" type="m">wensch</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Maer op den smallen <rhyme label="c" type="m" corresp="#s5:l5">baen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En siet men nau een <rhyme label="d" type="m" corresp="#s5:l6">Mensch</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Nae Christi Bruylofts <rhyme label="a" type="f">Feeste</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Een yder soo <rhyme label="b" type="m">verlanght</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat sijn versufte <rhyme label="a" type="f" corresp="#s6:l1">Gheeste</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Een nieuwe vreughd' <rhyme label="b" type="m" corresp="#s6:l2">ontfanght</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Soo dick hy daer aen <rhyme label="c" type="m">denckt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Maer laes! seght my eens <rhyme label="d" type="m">welck</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Dat (soo hy ons in <rhyme label="c" type="m" corresp="#s6:l5">schenckt</rhyme>)</l>
        <l id="s6:l8" met="3" type="-+">Ghewilligh drinckt sijn <rhyme label="d" type="m" corresp="#s6:l6">Kelck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus lieftmen elck om 't <rhyme label="a" type="f">seerste</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Christus maer om 't <rhyme label="b" type="m">ghenot</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Want yder een om 't <rhyme label="a" type="f" corresp="#s7:l1">veerste</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Vliet anghstigh sijn <rhyme label="b" type="m" corresp="#s7:l2">ghebodt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Daer in de Liefde <rhyme label="c" type="m">leyt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Noch treet soo als hy <rhyme label="d" type="m">tradt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">In waer <rhyme label="c" type="m" corresp="#s7:l5">ootmoedigheydt</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">'t Arm nederigh Saligh <rhyme label="d" type="m" corresp="#s7:l6">padt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Gaet eens recht uyt u <rhyme label="a" type="f">selven</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En volght dan Christum <rhyme label="b" type="m">nae</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Wilt eyghen wil <rhyme label="a" type="f" corresp="#s8:l1">bedelven</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Soo vint ghy hem wel <rhyme label="b" type="m" corresp="#s8:l2">drae</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Soo toont ght 't rechte <rhyme label="c" type="m">blijck</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Soo als ghy u <rhyme label="d" type="m">beroemt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Soo werdt ghy hem <rhyme label="c" type="m" corresp="#s8:l5">ghelijck</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Daer ghy u dan nae <rhyme label="d" type="m" corresp="#s8:l6">noemt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
