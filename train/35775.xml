  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MEt Sint Bavo <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wilt 's werelts pracht, en <rhyme label="b" type="m">eer</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Acht boven alle <rhyme label="a" type="f" corresp="#s1:l1">staten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Te dienen Godt, uw' <rhyme label="b" type="m" corresp="#s1:l2">Heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En wilt uw' noyt <rhyme label="a" type="f">betrouwen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Op eenigh <rhyme label="b" type="m">CrÃ«atuer</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Verduldigh zijt in <rhyme label="a" type="f" corresp="#s2:l1">rouwen</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Temt vroom uw' qua <rhyme label="b" type="m" corresp="#s2:l2">natuer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sint Bavo! Wilt <rhyme label="a" type="f">begeeren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En krijgen door uw' <rhyme label="b" type="m">stem</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Dat tot 't Roomsch gheloof <rhyme label="a" type="f" corresp="#s3:l1">keeren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Magh wederom <rhyme label="b" type="m" corresp="#s3:l2">Haerlem</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Iesu! maeckt ons <rhyme label="a" type="f">deelachtigh</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sint Baefs deughden, en <rhyme label="b" type="m">loon</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Dit smeecken wy <rhyme label="a" type="f" corresp="#s4:l1">eendrachtigh</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">O Iesu! Godes <rhyme label="b" type="m" corresp="#s4:l2">Soon</rhyme>.</l>
      </lg>
    </lg>
  </text>
