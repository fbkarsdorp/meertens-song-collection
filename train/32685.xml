  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MEn siet' te Loven inde <rhyme label="a" type="m">Stadt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Veel quanten <rhyme label="b" type="f">domineren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die never dagh, en nacht hun <rhyme label="a" type="m" corresp="#s1:l1">sat</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Drincken, als te <rhyme label="b" type="f" corresp="#s1:l2">Studeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Herbergh dat is hunne <rhyme label="a" type="m">Hal</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Daer sy gaen <rhyme label="b" type="f">Disputeren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">VVie dat het meesten drincken <rhyme label="a" type="m" corresp="#s2:l1">sal</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van allÄ“n hun <rhyme label="b" type="f" corresp="#s2:l2">Confreren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sy trecken op van smorgens <rhyme label="a" type="m">vroegh</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Drincken gebrande <rhyme label="b" type="f">wyntjens</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Gelijck den Boer treckt naer sijn <rhyme label="a" type="m" corresp="#s3:l1">Ploegh</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Soo neerstigh sijn dees <rhyme label="b" type="f" corresp="#s3:l2">Quyntjens</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dan gaen sy voorts den heelen <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Heel Kassen Bier door <rhyme label="b" type="f">dauwen</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Soo ick nu lest hun spel <rhyme label="a" type="m" corresp="#s4:l1">aen-sagh</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van lacchen niet cost hau <rhyme label="b" type="f" corresp="#s4:l2">wen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Want ick sagh'er een deel in 't <rhyme label="a" type="m">ront</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sitten noch Jonck van <rhyme label="b" type="f">Jaeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maer noyt ick vieser volck en <rhyme label="a" type="m" corresp="#s5:l1">vont</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'t Scheen dat het monsters <rhyme label="b" type="f" corresp="#s5:l2">waeren</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Om prys sy vulden hunnen <rhyme label="a" type="m">sack</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">VVie dat het meest cost <rhyme label="b" type="f">suypen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Het meesten deel dat was <rhyme label="a" type="m" corresp="#s6:l1">vooykack</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Die-men ter aerd' sagh <rhyme label="b" type="f" corresp="#s6:l2">cruypen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den eenen die was dick van <rhyme label="a" type="m">hooft</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En 't backhuys <rhyme label="b" type="f">op-geswollen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hy scheen van herssenen <rhyme label="a" type="m" corresp="#s7:l1">berooft</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">k'Sagh hem ter aerde <rhyme label="b" type="f" corresp="#s7:l2">rollen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Een ander die daer neffens <rhyme label="a" type="m">sat</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die dronck met volle <rhyme label="b" type="f">Kassen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Hy sagh als een verdroncke <rhyme label="a" type="m" corresp="#s8:l1">Kat</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En viel doen inde <rhyme label="b" type="f" corresp="#s8:l2">assen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ick sagh dan noch een vise <rhyme label="a" type="m">Pry</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Die had den Neus vol <rhyme label="b" type="f">jongen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Hy was ghesneden vanden <rhyme label="a" type="m" corresp="#s9:l1">key</rhyme></l>
        <l id="s9:l4" met="3" type="-+">De kaecken hem <rhyme label="b" type="f" corresp="#s9:l2">aff-hongen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Daer was noch eenen heelen <rhyme label="a" type="m">trop</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Die naer het bedde <rhyme label="b" type="f">cropen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En sloegen Dirick voor den <rhyme label="a" type="m" corresp="#s10:l1">kop</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Soo hadden sy <rhyme label="b" type="f" corresp="#s10:l2">gesopen</rhyme>.</l>
      </lg>
    </lg>
