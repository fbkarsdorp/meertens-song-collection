  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">SIet den goeden <rhyme label="a" type="f">Herder</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Acht syn Schaepken <rhyme label="a" type="f" corresp="#s1:l1">weÃªrder</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Als syn Hemels <rhyme label="b" type="m">Hof</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Hy daelt neer in 't <rhyme label="b" type="m" corresp="#s1:l3">stof</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Hy kreyt <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Hy schreyt <rhyme label="c" type="m" corresp="#s1:l5">hier</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Hy light hier in <rhyme label="d" type="f">doecken</rhyme></l>
        <l id="s1:l8" met="3" type="+-">In een arm <rhyme label="e" type="m">spelonck</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Om het Schaep te <rhyme label="d" type="f" corresp="#s1:l7">soecken</rhyme></l>
        <l id="s1:l10" met="3" type="+-">Dat verloren <rhyme label="e" type="m" corresp="#s1:l8">gonck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">d'Hemelsche <rhyme label="a" type="f">ghenuchten</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Ligghen hier en <rhyme label="a" type="f" corresp="#s2:l1">suchten</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Sal dan 't <rhyme label="b" type="m">tranen-dal</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Maken bly <rhyme label="b" type="m" corresp="#s2:l3">gheschal</rhyme>?</l>
        <l id="s2:l5" met="2" type="+-">Godt sucht <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Godt ducht <rhyme label="c" type="m" corresp="#s2:l5">hier</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Kan soo soeten <rhyme label="d" type="f">reghen</rhyme></l>
        <l id="s2:l8" met="3" type="+-">En den traenen <rhyme label="e" type="m">douw</rhyme></l>
        <l id="s2:l9" met="3" type="+-">Uw' hert niet <rhyme label="d" type="f" corresp="#s2:l7">beweghen</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Tot een goet <rhyme label="e" type="m" corresp="#s2:l8">berouw</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Komt met 't Duyf ken <rhyme label="a" type="f">weenen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">In de holle <rhyme label="a" type="f" corresp="#s3:l1">steenen</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Van den armen <rhyme label="b" type="m">stal</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Sucht in 't <rhyme label="b" type="m" corresp="#s3:l3">tranen-dal</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Syn <rhyme label="c" type="m">tranen</rhyme></l>
        <l id="s3:l6" met="2" type="+-">
          <rhyme label="c" type="m" corresp="#s3:l5">Vermanen</rhyme>
        </l>
        <l id="s3:l7" met="3" type="+-">Ons om te <rhyme label="d" type="f">beschreyen</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Al ons <rhyme label="e" type="m">ydelheydt</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Die den Heer doet <rhyme label="d" type="f" corresp="#s3:l7">leyen</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Al die <rhyme label="e" type="m" corresp="#s3:l8">bitterheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
