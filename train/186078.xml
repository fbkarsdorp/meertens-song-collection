  <author>Hermanus van den Burg</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe springen nu de <rhyme label="a" type="f">Fransen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wat leeren zy duytse <rhyme label="a" type="f" corresp="#s1:l1">dansen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Op eenen Engelschen <rhyme label="b" type="m">maat</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Zy maaken <rhyme label="c" type="f">Kabriollen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Als oude Jaagers <rhyme label="c" type="f" corresp="#s1:l4">knollen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Maar komen altyd te <rhyme label="b" type="m" corresp="#s1:l3">laat</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Maar komen altyd te <rhyme label="b" type="m" corresp="#s1:l3">laat</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Vendome zag men <rhyme label="a" type="f">zuchten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Zyn' dapre Fransjes <rhyme label="a" type="f" corresp="#s2:l1">vlugten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Voor 't zwaard van Prins <rhyme label="b" type="m">Eugeen</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Hy riep: vegt voor uw <rhyme label="c" type="f">Koning</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En wacht een' goê <rhyme label="c" type="f" corresp="#s2:l4">belooning</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Maar 't hart zonk naar <rhyme label="b" type="m" corresp="#s2:l3">beneên</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Maar 't hart zonk naar <rhyme label="b" type="m" corresp="#s2:l3">beneên</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Bouflers wou in de <rhyme label="a" type="f">Wallen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van Ryssel 't Botje <rhyme label="a" type="f" corresp="#s3:l1">gallen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En bieden <rhyme label="b" type="m">tegenstand</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Maar nu moet hy 't zich <rhyme label="c" type="f">schaamen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Als eertyds binnen <rhyme label="c" type="f" corresp="#s3:l4">Naamen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daar hy wierd <rhyme label="b" type="m" corresp="#s3:l3">overmand</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Daar hy wierd <rhyme label="b" type="m" corresp="#s3:l3">overmand</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Waar is uw' kracht <rhyme label="a" type="f">gebleeven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Loewys, die al uw <rhyme label="a" type="f" corresp="#s4:l1">leeven</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Zoo hevig hebt <rhyme label="b" type="m">gezwest</rhyme>?</l>
        <l id="s4:l4" met="3" type="-+">Uw haan, bang voor de <rhyme label="c" type="f">tanden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Des Leeuws der vrye <rhyme label="c" type="f" corresp="#s4:l4">landen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Kruipt schigtig in zyn <rhyme label="b" type="m" corresp="#s4:l3">nest</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Kruipt schigtig in zyn <rhyme label="b" type="m" corresp="#s4:l3">nest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maar laat hy zich <rhyme label="a" type="f">verkloeken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wy komen hem <rhyme label="a" type="f" corresp="#s5:l1">bezoeken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Want Ryssel buygt zich <rhyme label="b" type="m">neêr</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Wy zullen moordlust <rhyme label="c" type="f">straffen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En ons haast wraak <rhyme label="c" type="f" corresp="#s5:l4">verschaffen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Door slagen van 't <rhyme label="b" type="m" corresp="#s5:l3">geweer</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Door slagen van 't <rhyme label="b" type="m" corresp="#s5:l3">geweer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hoe kan de kans <rhyme label="a" type="f">verkeeren</rhyme>?</l>
        <l id="s6:l2" met="3" type="-+">Nu komen wy de <rhyme label="a" type="f" corresp="#s6:l1">veêren</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die hy van andre <rhyme label="b" type="m">stal</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Met recht en rede <rhyme label="c" type="f">plukken</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En hem den staart <rhyme label="c" type="f" corresp="#s6:l4">ontrukken</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En brengen zoo ten <rhyme label="b" type="m" corresp="#s6:l3">val</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">En brengen zoo ten <rhyme label="b" type="m" corresp="#s6:l3">val</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hoe zullen Hollands <rhyme label="a" type="f">boeren</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">De Mug den bek noch <rhyme label="a" type="f" corresp="#s7:l1">snoeren</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Als hy genade <rhyme label="b" type="m">smeekt</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">En leggen zoo hun' <rhyme label="c" type="f">banden</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Dat hy met zyne <rhyme label="c" type="f" corresp="#s7:l4">tanden</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Geen Vreêverbond meer <rhyme label="b" type="m" corresp="#s7:l3">breekt</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Geen Vreêverbond meer <rhyme label="b" type="m" corresp="#s7:l3">breekt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ach! waard gy vroeg <rhyme label="a" type="f">gesturven</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wat had gy rust <rhyme label="a" type="f" corresp="#s8:l1">verwurven</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En glory ryk <rhyme label="b" type="m">geleest</rhyme>?</l>
        <l id="s8:l4" met="3" type="-+">Maar nu zyt gy <rhyme label="c" type="f">verlaaten</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Van list en van <rhyme label="c" type="f" corresp="#s8:l4">Soldaaten</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En uwe Rykstroon <rhyme label="b" type="m" corresp="#s8:l3">beeft</rhyme>.</l>
        <l id="s8:l7" met="3" type="-+">En uwe Rykstroon <rhyme label="b" type="m" corresp="#s8:l3">beeft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wy zullen 't volk <rhyme label="a" type="f">verlossen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Van snoô Jesuietsche <rhyme label="a" type="f" corresp="#s9:l1">vossen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En hunnen kwaaden <rhyme label="b" type="m">Raad</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">Hun hoogmoed neder <rhyme label="c" type="f">vellen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En Vrankryk weêr <rhyme label="c" type="f" corresp="#s9:l4">herstellen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">In zynen vryen <rhyme label="b" type="m" corresp="#s9:l3">staat</rhyme>.</l>
        <l id="s9:l7" met="3" type="-+">In zynen vryen <rhyme label="b" type="m" corresp="#s9:l3">staat</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wat kan Boergonje <rhyme label="a" type="f">uitrechten</rhyme>?</l>
        <l id="s10:l2" met="3" type="-+">Hy heeft geen lust tot <rhyme label="a" type="f" corresp="#s10:l1">vechten</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Maar ziet al beevende <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Met al zyn' laffe <rhyme label="c" type="f">loopers</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Hoe dat de kaas <rhyme label="c" type="f" corresp="#s10:l4">verkoopers</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Met Ryssel stappen <rhyme label="b" type="m" corresp="#s10:l3">gaan</rhyme>.</l>
        <l id="s10:l7" met="3" type="-+">Met Ryssel stappen <rhyme label="b" type="m" corresp="#s10:l3">gaan</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Keur-Beyren moet <rhyme label="a" type="f">vertrekken</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Hy zet het op een <rhyme label="a" type="f" corresp="#s11:l1">rekken</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Van Brussel, in den <rhyme label="b" type="m">nacht</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">La Moth vol schrik en <rhyme label="c" type="f">beeven</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Moet Gent weêr <rhyme label="c" type="f" corresp="#s11:l4">overgeeven</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Bevreest voor Neêrlands <rhyme label="b" type="m" corresp="#s11:l3">macht</rhyme>.</l>
        <l id="s11:l7" met="3" type="-+">Bevreest voor Neêrlands <rhyme label="b" type="m" corresp="#s11:l3">macht</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Daar gaan de Beertjes <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Uyt Brugge, dat nu <rhyme label="a" type="f" corresp="#s12:l1">open</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En vry van 't rappig <rhyme label="b" type="m">vee</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">De dapre <rhyme label="c" type="f">Batavieren</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Bekranst ziet met <rhyme label="c" type="f" corresp="#s12:l4">Louwrieren</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Voorbooden van den <rhyme label="b" type="m" corresp="#s12:l3">Vree</rhyme>.</l>
        <l id="s12:l7" met="3" type="-+">Voorbooden van den <rhyme label="b" type="m" corresp="#s12:l3">Vree</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Vaart voort beproefde <rhyme label="a" type="f">Helden</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">En vaagt de vrye <rhyme label="a" type="f" corresp="#s13:l1">velden</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Met uw' gevreesde <rhyme label="b" type="m">hand</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Van Roofzieke <rhyme label="c" type="f">Oorlogspesten</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">En sloopt hun' snoode <rhyme label="c" type="f" corresp="#s13:l4">nesten</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Zoo blyft de Vreede in <rhyme label="b" type="m" corresp="#s13:l3">stant</rhyme>.</l>
        <l id="s13:l7" met="3" type="-+">Zoo blyft de Vreede in <rhyme label="b" type="m" corresp="#s13:l3">stant</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
