  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Jongmans ik voel aan myn <rhyme label="a" type="f">harte</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hoe de Liefde voor 't <rhyme label="b" type="m">gemoed</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Baart de grootste ziele <rhyme label="a" type="f" corresp="#s1:l1">smarte</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Geeft haar bitter by het <rhyme label="b" type="m" corresp="#s1:l2">zoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wat moet niet een Meisje <rhyme label="a" type="f">klagen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Als zy tedere Min <rhyme label="b" type="m">gevoelt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">'t Voegt haar nimmer zelf te <rhyme label="a" type="f" corresp="#s2:l1">vragen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Wat ook in haar boezem <rhyme label="b" type="m" corresp="#s2:l2">woelt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'s Nachts wanneer het zwarte <rhyme label="a" type="f">duister</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Gansch Natuur tot ruste <rhyme label="b" type="m">wenkt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Voelt zy ja haar hart <rhyme label="a" type="f" corresp="#s3:l1">gekluistert</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Als ze aan liefdens voorwerp <rhyme label="b" type="m" corresp="#s3:l2">denkt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Zulke Meisjes zyn <rhyme label="a" type="f">beklagelyk</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daar geen wederliefde <rhyme label="b" type="m">blykt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Zulk een lot is <rhyme label="a" type="f" corresp="#s4:l1">onverdragelyk</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Als haar Minnaar van haar <rhyme label="b" type="m" corresp="#s4:l2">wykt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ja, gelyk de <rhyme label="a" type="f">Zonnestralen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dringen tot in 's aardryks <rhyme label="b" type="m">schoot</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Zoo ziet me ook de liefde <rhyme label="a" type="f" corresp="#s5:l1">dalen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">In het hart van hulp <rhyme label="b" type="m" corresp="#s5:l2">ontbloot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">De eerste liefde is <rhyme label="a" type="f">onverbroken</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Jongmans; zoo gy haar krachten <rhyme label="b" type="m">kent</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Laat u nimmermeer <rhyme label="a" type="f" corresp="#s6:l1">bestoken</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Stort geen Meisje in 't <rhyme label="b" type="m" corresp="#s6:l2">elend</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">De tweede liefde kan nooit zo <rhyme label="a" type="f">binden</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">En schoon de Min op aarde <rhyme label="b" type="m">blyft</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Men zal doch nooit zoo sterk <rhyme label="a" type="f" corresp="#s7:l1">bevinden</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Als de eerste liefde die <rhyme label="b" type="m" corresp="#s7:l2">beklyft</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'K heb in myn hart u trouw <rhyme label="a" type="f">gezworen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Zo gy myn dan oprecht <rhyme label="b" type="m">bemind</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Zal niets ons geluk <rhyme label="a" type="f" corresp="#s8:l1">verstoren</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Daar God ons tot de dood <rhyme label="b" type="m" corresp="#s8:l2">verbind</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
