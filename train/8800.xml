  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAt can ons comen aen voor <rhyme label="a" type="m">Noot</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Als ons de HEERe <rhyme label="b" type="f">weydet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En spijset ons met Hemels <rhyme label="a" type="m" corresp="#s1:l1">Broot</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">End' op die Weyde <rhyme label="b" type="f" corresp="#s1:l2">leydet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Daer toe verquicket onse <rhyme label="c" type="m">Moet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Vercoelt ons metten Water <rhyme label="c" type="m" corresp="#s1:l5">soet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Sijns weerden Heyl'gen <rhyme label="d" type="f">Geestes</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Om zijns Naems willen hy <rhyme label="a" type="m">altoos</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ons voert op rechter <rhyme label="b" type="f">Straten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Laet ons in gheender Tijdt <rhyme label="a" type="m" corresp="#s2:l1">troostloos</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In Schaed' oft oock in <rhyme label="b" type="f" corresp="#s2:l2">baten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Daerom wy altijt moedich <rhyme label="c" type="m">syn</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Oock in des Doots ghestalt en <rhyme label="c" type="m" corresp="#s2:l5">Pijn</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Want ghy zijt met ons <rhyme label="d" type="f">HEERE</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dijn Stock en Staff (ghy Herder <rhyme label="a" type="m">goet</rhyme>)</l>
        <l id="s3:l2" met="3" type="-+">Ons troosten en oock <rhyme label="b" type="f">straffen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat Cruys des vleesches Lust wech <rhyme label="a" type="m" corresp="#s3:l1">doet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat ons gheen schaep mach <rhyme label="b" type="f" corresp="#s3:l2">schaffen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Den Geeste door t' Sondich <rhyme label="c" type="m">gespuys</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dat in dit sterfflijck Lichaem <rhyme label="c" type="m" corresp="#s3:l5">is</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En doet hem altijdt <rhyme label="d" type="f">rueren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een Disch hebt ghy voor ons <rhyme label="a" type="m">bereyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die wy altijdt <rhyme label="b" type="f">aenschouwen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dijns Heyl'ghen Woordes goede <rhyme label="a" type="m" corresp="#s4:l1">Weydt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die wy int Herte <rhyme label="b" type="f" corresp="#s4:l2">knouwen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Als ons des Vyants List aen <rhyme label="c" type="m">grijpt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dees Disch dan ons die Ziel <rhyme label="c" type="m" corresp="#s4:l5">verquickt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Met dijnens Gheestes <rhyme label="d" type="f">gaven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dijn Goetheyt en <rhyme label="a" type="m">Barmherticheyt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">My volghen all' mijn <rhyme label="b" type="f">Daghen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Van nu aen tot in <rhyme label="a" type="m" corresp="#s5:l1">Eewicheyt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Want ghy gaet sorghe <rhyme label="b" type="f" corresp="#s5:l2">draghen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dat wy hier door t' Geloove <rhyme label="c" type="m">syn</rhyme></l>
        <l id="s5:l6" met="4" type="-+">End' daer oock in den Zale <rhyme label="c" type="m" corresp="#s5:l5">dijn</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Borghers end' <rhyme label="d" type="f">Huysghenooten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Des help ons HEEre Jesu <rhyme label="a" type="m">Christ</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wilt onse Herte <rhyme label="b" type="f">bouwen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dat ons niet schaed' des Sathans <rhyme label="a" type="m" corresp="#s6:l1">List</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">End' dat ons niet <rhyme label="b" type="f" corresp="#s6:l2">berouwe</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Dat wy der Werelt aff <rhyme label="c" type="m">ghegaen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Nu moeten inden Kampe <rhyme label="c" type="m" corresp="#s6:l5">staen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Helpt ons (HEER) <rhyme label="d" type="f">overwinnen</rhyme>.</l>
      </lg>
    </lg>
