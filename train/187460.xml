  <author>Johannes Wilhelmus Bussingh</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Zo sluimert <rhyme label="a" type="m">Gij</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Van 't leed nu <rhyme label="a" type="m" corresp="#s1:l1">vrij</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Mijn jesus! die Uw <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Hebt, uit <rhyme label="c" type="m">genaê</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Op <rhyme label="c" type="m" corresp="#s1:l4">Golgotha</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Voor ons aen 't kruis <rhyme label="b" type="f" corresp="#s1:l3">gegeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Wat heil, wat <rhyme label="a" type="m">troost</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Wildt Ge Adams <rhyme label="a" type="m" corresp="#s2:l1">kroost</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">ô Groote Borg! <rhyme label="b" type="f">verwerven</rhyme>. -</l>
        <l id="s2:l4" met="2" type="-+">Wat <rhyme label="c" type="m">zaligheên</rhyme>! -</l>
        <l id="s2:l5" met="2" type="-+">Gij hebt <rhyme label="c" type="m" corresp="#s2:l4">volstreên</rhyme>. -</l>
        <l id="s2:l6" met="3" type="-+">'t Geloof juicht bij Uw <rhyme label="b" type="f" corresp="#s2:l3">sterven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Gij neemt van 't <rhyme label="a" type="m">graf</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Het sombere <rhyme label="a" type="m" corresp="#s3:l1">af</rhyme>: -</l>
        <l id="s3:l3" met="3" type="-+">In de uiterste <rhyme label="b" type="f">oogenblikken</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Is, voor 't <rhyme label="c" type="m">gemoed</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Uw sterven <rhyme label="c" type="m" corresp="#s3:l4">zoet</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Geen Helvorst doet meer <rhyme label="b" type="f" corresp="#s3:l3">schrikken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Geen Helvorst, <rhyme label="a" type="m">neen</rhyme>;</l>
        <l id="s4:l2" met="2" type="-+">Hij ligt <rhyme label="a" type="m" corresp="#s4:l1">vertreên</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">'k Zie reeds door 't nare <rhyme label="b" type="f">duister</rhyme>: -</l>
        <l id="s4:l4" met="2" type="-+">De Zon rijst <rhyme label="c" type="m">blijê</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Aen de <rhyme label="c" type="m" corresp="#s4:l4">overzijê</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Des grafs, met grootscher <rhyme label="b" type="f" corresp="#s4:l3">luister</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">ô <rhyme label="a" type="m">Vriendenpaer</rhyme>!</l>
        <l id="s5:l2" met="2" type="-+">Geen <rhyme label="a" type="m" corresp="#s5:l1">lijkmisbaer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Geen rouw werd' hier <rhyme label="b" type="f">bedreven</rhyme>:</l>
        <l id="s5:l4" met="2" type="-+">Geloof dit <rhyme label="c" type="m">woord</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Van Hem <rhyme label="c" type="m" corresp="#s5:l4">gehoord</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">'k Zal zeker weêr <rhyme label="b" type="f" corresp="#s5:l3">herleven</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Zijn macht <rhyme label="a" type="m">verächt</rhyme></l>
        <l id="s6:l2" met="2" type="-+">De sterke <rhyme label="a" type="m" corresp="#s6:l1">wacht</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Der Roomsche <rhyme label="b" type="f">Soudenieren</rhyme>.</l>
        <l id="s6:l4" met="2" type="-+">Zwicht Dood en <rhyme label="c" type="m">Hel</rhyme>! -</l>
        <l id="s6:l5" met="2" type="-+">
          <rhyme label="c" type="m" corresp="#s6:l4">Emanuël</rhyme>
        </l>
        <l id="s6:l6" met="3" type="-+">Zal straks weêr <rhyme label="b" type="f" corresp="#s6:l3">zegevieren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Beeft, Richters, <rhyme label="a" type="m">beeft</rhyme>! -</l>
        <l id="s7:l2" met="2" type="-+">Als Hij <rhyme label="a" type="m" corresp="#s7:l1">herleeft</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Waer, Sanhedrin der <rhyme label="b" type="f">Joden</rhyme>!</l>
        <l id="s7:l4" met="2" type="-+">Wen de Almacht <rhyme label="c" type="m">spreekt</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">En 't graf <rhyme label="c" type="m" corresp="#s7:l4">verbreekt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Waerheen dan Gij <rhyme label="b" type="f" corresp="#s7:l3">gevloden</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Maer, troost u <rhyme label="a" type="m">vrij</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">ô Vrienden <rhyme label="a" type="m" corresp="#s8:l1">rij</rhyme>! -</l>
        <l id="s8:l3" met="3" type="-+">Getrouwe <rhyme label="b" type="f">volgelingen</rhyme>!</l>
        <l id="s8:l4" met="2" type="-+">Legt 't rouwfloers <rhyme label="c" type="m">af</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Straks, op dit <rhyme label="c" type="m" corresp="#s8:l4">graf</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Zult Gij 't triömflied <rhyme label="b" type="f" corresp="#s8:l3">zingen</rhyme>. -</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Mijn Heer en <rhyme label="a" type="m">God</rhyme>!</l>
        <l id="s9:l2" met="2" type="-+">Wat zalig <rhyme label="a" type="m" corresp="#s9:l1">lot</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Mag ook mijn hart <rhyme label="b" type="f">verbeiden</rhyme>? -</l>
        <l id="s9:l4" met="2" type="-+">'k Ga grafwaerts <rhyme label="c" type="m">heen</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Maer 'k vrees niet, <rhyme label="c" type="m" corresp="#s9:l4">neen</rhyme>;</l>
        <l id="s9:l6" met="3" type="-+">'k Herleef weêr na 't <rhyme label="b" type="f" corresp="#s9:l3">verscheiden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">ô Zoet <rhyme label="a" type="m">verblijf</rhyme>!</l>
        <l id="s10:l2" met="2" type="-+">'t Ontzielde <rhyme label="a" type="m" corresp="#s10:l1">lijf</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Ligt hier in vrede <rhyme label="b" type="f">neder</rhyme>;</l>
        <l id="s10:l4" met="2" type="-+">De ziel, <rhyme label="c" type="m">bevrijd</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Van moeite en <rhyme label="c" type="m" corresp="#s10:l4">strijd</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Keert tot haer Schepper <rhyme label="b" type="f" corresp="#s10:l3">weder</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">'k Wacht zo, mijn <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s11:l2" met="2" type="-+">En Goël <rhyme label="a" type="m" corresp="#s11:l1">weêr</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Met Majesteit <rhyme label="b" type="f">omschenen</rhyme>:</l>
        <l id="s11:l4" met="2" type="-+">Wen 't grootsch <rhyme label="c" type="m">geluid</rhyme>:</l>
        <l id="s11:l5" met="2" type="-+">Komt uit! Komt <rhyme label="c" type="m" corresp="#s11:l4">uit</rhyme>!</l>
        <l id="s11:l6" met="3" type="-+">Weêr beiden zal <rhyme label="b" type="f" corresp="#s11:l3">verëenen</rhyme>. -</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Ja; niets <rhyme label="a" type="m">verderft</rhyme>. -</l>
        <l id="s12:l2" met="2" type="-+">Zelfs dat, wat <rhyme label="a" type="m" corresp="#s12:l1">sterft</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Zal weêr uit stof <rhyme label="b" type="f">verrijzen</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">En, na dien <rhyme label="c" type="m">stond</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Zal hart en <rhyme label="c" type="m" corresp="#s12:l4">mond</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Voor eeuwig, jesus <rhyme label="b" type="f" corresp="#s12:l3">prijzen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="2" type="-+">'k Vrees Graf noch <rhyme label="a" type="m">Dood</rhyme>,</l>
        <l id="s13:l2" met="2" type="-+">ô Neen; geen <rhyme label="a" type="m" corresp="#s13:l1">nood</rhyme>! -</l>
        <l id="s13:l3" met="3" type="-+">Ik word, van 't stof <rhyme label="b" type="f">ontheven</rhyme>,</l>
        <l id="s13:l4" met="2" type="-+">In <rhyme label="c" type="m">Heerlijkheid</rhyme></l>
        <l id="s13:l5" met="2" type="-+">Eens <rhyme label="c" type="m" corresp="#s13:l4">ingeleid</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Om eeuwig daer te <rhyme label="b" type="f" corresp="#s13:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="2" type="-+">Ja, jesus! 'k <rhyme label="a" type="m">zal</rhyme></l>
        <l id="s14:l2" met="2" type="-+">'t <rhyme label="a" type="m" corresp="#s14:l1">Bazuingeschal</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Dat klinkt, door 's Hemels <rhyme label="b" type="f">choren</rhyme>,</l>
        <l id="s14:l4" met="2" type="-+">Op U <rhyme label="c" type="m">gezicht</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">In 't jongst <rhyme label="c" type="m" corresp="#s14:l4">gericht</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Eens, met verrukking, <rhyme label="b" type="f" corresp="#s14:l3">horen</rhyme>. -</l>
      </lg>
    </lg>
  </text>
</song>
