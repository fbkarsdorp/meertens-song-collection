  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Jesus! kom dog zelv' tot <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En blyf mynen geest na <rhyme label="a" type="m" corresp="#s1:l1">by</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Kom dog, waarde Zielen <rhyme label="b" type="m">vrind</rhyme>!</l>
        <l id="s1:l4" met="4" type="+-">Liefste, wien myn ziel <rhyme label="b" type="m" corresp="#s1:l3">bemint</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Duizendmaal ik u <rhyme label="a" type="m">begeer</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Niets vernoegt myn hert zo <rhyme label="a" type="m" corresp="#s2:l1">zeer</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Duizendmaal roep ik tot <rhyme label="b" type="m">dy</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Jesus! Jesus! kom tot <rhyme label="b" type="m" corresp="#s2:l3">my</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Niets van al des weerelds <rhyme label="a" type="m">lust</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Geeft myn ziele vreed' of <rhyme label="a" type="m" corresp="#s3:l1">rust</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Jesus! uw naby my <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Noem ik myne lust <rhyme label="b" type="m" corresp="#s3:l3">allein</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Aller Eng'len glans en <rhyme label="a" type="m">pracht</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Al wat glory word <rhyme label="a" type="m" corresp="#s4:l1">geacht</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Is my, groote <rhyme label="b" type="m">Menschen-vrind</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Buiten u maar rook en <rhyme label="b" type="m" corresp="#s4:l3">wind</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Neem vry alles van my <rhyme label="a" type="m">heen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">U verlaat ik niet, o <rhyme label="a" type="m" corresp="#s5:l1">neen</rhyme>!</l>
        <l id="s5:l3" met="4" type="+-">Gy, ô Jesus, zult <rhyme label="b" type="m">allein</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Eeuwig myne blydschap <rhyme label="b" type="m" corresp="#s5:l3">zyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Geenen and'ren zeg ik <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Dat ik 't hert hem open <rhyme label="a" type="m" corresp="#s6:l1">doe</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">U alleen, Heer, laat ik <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Gy zyt myn', dit is myn <rhyme label="b" type="m" corresp="#s6:l3">zin</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">U alleen, ô Godes <rhyme label="a" type="m">Zoon</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Noem ik myne kroon en <rhyme label="a" type="m" corresp="#s7:l1">loon</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Lam Gods, voor my dood <rhyme label="b" type="m">gebloedt</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Zyt myn Bruigom, Hoogste <rhyme label="b" type="m" corresp="#s7:l3">goed</rhyme>.</l>
      </lg>
    </lg>
  </text>
