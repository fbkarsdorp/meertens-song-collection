    <melody>Het zou een meisje gaan om wijn</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="emotions">emoties</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk werd bedroeft langher hoe <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Rijck Godt wie sal ickt <rhyme label="b" type="f">claghen</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">De Iacht-honden jaghen my soo <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ick cant niet langher <rhyme label="b" type="f" corresp="#s1:l2">draghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Waer in hebdy soo groot <rhyme label="a" type="m">verdriet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Waerom is u <rhyme label="b" type="f">bedroeven</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Den opval die u hier <rhyme label="a" type="m" corresp="#s2:l1">gheschiedt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Is, om u selfs te <rhyme label="b" type="f" corresp="#s2:l2">proeven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sy drucken neer al mijn <rhyme label="a" type="m">ghemoedt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat vrolijck plach te <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Berooven my vant opperts <rhyme label="a" type="m" corresp="#s3:l1">goedt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ick ben benaut vol <rhyme label="b" type="f" corresp="#s3:l2">vreesen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Niemandt mach u berooven <rhyme label="a" type="m">yet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Soo ghy hier zijt <rhyme label="b" type="f">ghelaten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Salighe vrucht en groot <rhyme label="a" type="m" corresp="#s4:l1">gheniet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Suldy uyt 'tlijden <rhyme label="b" type="f" corresp="#s4:l2">rapen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Heer reyckt my u stercke <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Verhoort doch mijn <rhyme label="b" type="f">begeeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">('Twaerom vant lijden u <rhyme label="a" type="m" corresp="#s5:l1">bekant</rhyme>)</l>
        <l id="s5:l4" met="3" type="-+">Wilt my doch lijden <rhyme label="b" type="f" corresp="#s5:l2">leeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Aensiet hoe ick ben <rhyme label="a" type="m">voorghegaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En sterven was mijn <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Soo hebbben mijn volgers <rhyme label="a" type="m" corresp="#s6:l1">gedaen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En my glory <rhyme label="b" type="f" corresp="#s6:l2">ghegheven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Glory te gheven u hier <rhyme label="a" type="m">naer</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hoe sal ick dat <rhyme label="b" type="f">becomen</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Dit lijden valt my al te <rhyme label="a" type="m" corresp="#s7:l1">swaer</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ick bent heel <rhyme label="b" type="f" corresp="#s7:l2">onghewoone</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wat lijden dat u hert <rhyme label="a" type="m">beswaert</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Dat comt door uwen <rhyme label="b" type="f">schulden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Die vrolijck lijdt, die wordt <rhyme label="a" type="m" corresp="#s8:l1">verclaert</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Door my, diet al <rhyme label="b" type="f" corresp="#s8:l2">vervulden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Vrolijck te lijden, can ick <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Dat connen die <rhyme label="b" type="f">volmaeckte</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Verlicht mijn hert dat tot u <rhyme label="a" type="m" corresp="#s9:l1">vliedt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dat ick dat mee eens <rhyme label="b" type="f" corresp="#s9:l2">smaeckte</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Sijn lijden mach geen lijden <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die can goetwilligh <rhyme label="b" type="f">lijen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Tis sijnder zielen <rhyme label="a" type="m" corresp="#s10:l1">Medecijn</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Int oeffenen vant <rhyme label="b" type="f" corresp="#s10:l2">strijen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Prins Heere Godt van <rhyme label="a" type="m">Hemelrijck</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Geeft my nae u <rhyme label="b" type="f">behaghen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dat ick opval en strijdt <rhyme label="a" type="m" corresp="#s11:l1">ghelijck</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Mocht lijden sonder <rhyme label="b" type="f" corresp="#s11:l2">claghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
