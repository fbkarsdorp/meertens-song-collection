  <author>Adriaan Loosjes, Jan van Walré</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Willen wij genoegen <rhyme label="a" type="f">smaaken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">'t Geen bestendig is en <rhyme label="b" type="m">zoet</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">'t Geen ons nimmer zal <rhyme label="c" type="f">verveelen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Noch ten laatste ons bloozen <rhyme label="b" type="m" corresp="#s1:l2">doet</rhyme>?</l>
        <l id="s1:l5" met="4" type="+-">Kom, met lust den boog <rhyme label="d" type="f">ontspannen</rhyme>!</l>
        <l id="s1:l6" met="4" type="+-">Dat de vreugd bij ons <rhyme label="e" type="m">verkeer'</rhyme>!</l>
        <l id="s1:l7" met="4" type="+-">Maar omtogen met den <rhyme label="f" type="f">Sluier</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Van welvoeglijkheid en <rhyme label="e" type="m" corresp="#s1:l6">eer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Gul en zorgloos <rhyme label="a" type="f">losgelaten</rhyme>!</l>
        <l id="s2:l2" met="4" type="+-">Vrolijkheid verkwikt het <rhyme label="b" type="m">hart</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Blij' gelagch verlengt het <rhyme label="c" type="f">leeven</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Boerterij verdrijft de <rhyme label="b" type="m" corresp="#s2:l2">smart</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Kom, vermaaken we ons <rhyme label="d" type="f">éénstemmig</rhyme>!</l>
        <l id="s2:l6" met="4" type="+-">Dat ons hart geen moordkuil <rhyme label="e" type="m">zij</rhyme>!</l>
        <l id="s2:l7" met="4" type="+-">Schuwen wij den doffen <rhyme label="f" type="f">Sluier</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Der gehaate <rhyme label="e" type="m" corresp="#s2:l6">veinzerij</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Word verbeeldingskracht of <rhyme label="a" type="f">spotzucht</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Al eens meester van de <rhyme label="b" type="m">tong</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dwaalt zij, daar het beter <rhyme label="c" type="f">ware</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat de reden haar <rhyme label="b" type="m" corresp="#s3:l2">bedwong</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Laat onze eendragt nimmer <rhyme label="d" type="f">wank'len</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Om een' ijd'len <rhyme label="e" type="m">woorden-klap</rhyme>!</l>
        <l id="s3:l7" met="4" type="+-">Dekken wij dien met den <rhyme label="f" type="f">Sluier</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Van de liefde en <rhyme label="e" type="m" corresp="#s3:l6">broederschap</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Heilig zij de kring, mijn <rhyme label="a" type="f">Vrinden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Wiens bestaan ons dierbaar <rhyme label="b" type="m">is</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Heilig zij steeds, in ons <rhyme label="c" type="f">midden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">'t Zegel der <rhyme label="b" type="m" corresp="#s4:l2">geheimenis</rhyme>!</l>
        <l id="s4:l5" met="4" type="+-">Vond men hier al iets <rhyme label="d" type="f">berisplijks</rhyme>....</l>
        <l id="s4:l6" met="4" type="+-">Wie, die 't ooit verbreiden <rhyme label="e" type="m">zou</rhyme>?</l>
        <l id="s4:l7" met="4" type="+-">'t Blijv' verborgen in den <rhyme label="f" type="f">Sluier</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Der stilzwijgendheid en <rhyme label="e" type="m" corresp="#s4:l6">trouw</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Vinden we immer ons <rhyme label="a" type="f">beledigd</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Door een woord of losse <rhyme label="b" type="m">daad</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">'t Zij vergeeven en <rhyme label="c" type="f">vergeeten</rhyme>!</l>
        <l id="s5:l4" met="4" type="+-">Vriendschap voed geen vuigen <rhyme label="b" type="m" corresp="#s5:l2">haat</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Afgedaan en <rhyme label="d" type="f">afgedronken</rhyme>!</l>
        <l id="s5:l6" met="4" type="+-">Geen herdenken meer, o <rhyme label="e" type="m">neen</rhyme>! -</l>
        <l id="s5:l7" met="4" type="+-">Vrienden-twist smoort in den <rhyme label="f" type="f">Sluier</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Der Vergetelheid <rhyme label="e" type="m" corresp="#s5:l6">alleen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Waare vreugd, aan de eer <rhyme label="a" type="f">verbonden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Gansch vervreemd van <rhyme label="b" type="m">veinzerij</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Die de liefde en trouw <rhyme label="c" type="f">verëenigt</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Zet ons leevenskrachten <rhyme label="b" type="m" corresp="#s6:l2">bij</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Jeugd en kracht, bekranst met <rhyme label="d" type="f">roozen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Maaken 't leeven tot een' <rhyme label="e" type="m">lust</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">En aan 't graf bemerkt de <rhyme label="f" type="f">Grijsäart</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Eerst den Sluier van de <rhyme label="e" type="m" corresp="#s6:l6">rust</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Naa een nut en vrolijk <rhyme label="a" type="f">leeven</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Lagcht de rust ons streelend <rhyme label="b" type="m">toe</rhyme>!</l>
        <l id="s7:l3" met="4" type="+-">Wél te doen aan zich en <rhyme label="c" type="f">and'ren</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Laat den sterv'ling blij te <rhyme label="b" type="m" corresp="#s7:l2">moê</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">Deugd en Vreugd zijn naauw <rhyme label="d" type="f">verbonden</rhyme>;</l>
        <l id="s7:l6" met="4" type="+-">Dat ons steeds dat paar <rhyme label="e" type="m">geleid'</rhyme>!</l>
        <l id="s7:l7" met="4" type="+-">En wij vreezen nooit den <rhyme label="f" type="f">Sluier</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Der ontzettende <rhyme label="e" type="m" corresp="#s7:l6">eeuwigheid</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
