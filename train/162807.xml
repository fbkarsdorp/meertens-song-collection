  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE troony druckt de in-borst <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De Gheest Aerdt na de <rhyme label="b" type="f">leden</rhyme>:</l>
        <l id="s1:l3" met="3" type="+-">Esaus ruyghe <rhyme label="b" type="f" corresp="#s1:l2">seden</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Waren als sijn <rhyme label="a" type="m" corresp="#s1:l1">Huydt</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Het reght van <rhyme label="c" type="f">Eerst-gebooren</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Acht dien dwaes soo <rhyme label="d" type="m">slecht</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Dat hy 't heeft <rhyme label="c" type="f" corresp="#s1:l5">verlooren</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Om een <rhyme label="d" type="m" corresp="#s1:l6">Moes-gereght</rhyme>:</l>
        <l id="s1:l9" met="3" type="-+">En word van Heer soo <rhyme label="d" type="m" corresp="#s1:l6">Knecht</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sijn Oore luysterd na de <rhyme label="a" type="m">Buyck</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En gants niet na de <rhyme label="b" type="f">reden</rhyme>:</l>
        <l id="s2:l3" met="3" type="+-">Dus gaet het noch <rhyme label="b" type="f" corresp="#s2:l2">heden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Mede in 't <rhyme label="a" type="m" corresp="#s2:l1">gebruyck</rhyme>:</l>
        <l id="s2:l5" met="3" type="+-">Om maer een <rhyme label="c" type="f">schijn-vermaecken</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">En een blinckend <rhyme label="d" type="m">roet</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Een oogenblick te <rhyme label="c" type="f" corresp="#s2:l5">smaecken</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Schopt men met de <rhyme label="d" type="m" corresp="#s2:l6">voet</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Het kostlijck Hemels <rhyme label="d" type="m" corresp="#s2:l6">goedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer dwase Sondaer! die niet <rhyme label="a" type="m">acht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Op tijdelijck <rhyme label="b" type="f">waerschouwen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Eer het laet <rhyme label="b" type="f" corresp="#s3:l2">berouwen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">V aentast <rhyme label="a" type="m" corresp="#s3:l1">onsaght</rhyme>:</l>
        <l id="s3:l5" met="3" type="+-">Koom, spieghelt u hier <rhyme label="c" type="f">saght'lijck</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Aen dees ruygaerts <rhyme label="d" type="m">daedt</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Die om een kool <rhyme label="c" type="f" corresp="#s3:l5">veracht'lijck</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Sijn erf-goedt <rhyme label="d" type="m" corresp="#s3:l6">versmaet</rhyme>:</l>
        <l id="s3:l9" met="3" type="-+">Maer weend doe 't was te <rhyme label="d" type="m" corresp="#s3:l6">laet</rhyme>.</l>
      </lg>
    </lg>
  </text>
