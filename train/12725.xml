  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Geluckigh is de <rhyme label="a" type="m">Mensch</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Niet die na sijnen <rhyme label="a" type="m" corresp="#s1:l1">wensch</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Op Aerden leeft <rhyme label="b" type="f">voorspoedigh</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Niet die sijn Kisten <rhyme label="c" type="m">houdt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Gepropt met <rhyme label="c" type="m" corresp="#s1:l4">stapel-Goudt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Of Silver <rhyme label="b" type="f" corresp="#s1:l3">overvloedigh</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer die sijn schat en <rhyme label="a" type="m">goedt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Heeft binnen in ’t <rhyme label="a" type="m" corresp="#s2:l1">gemoedt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En doet daer mee sijn <rhyme label="b" type="f">handel</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die nedrigh is en <rhyme label="c" type="m">slecht</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Stantvastigh en <rhyme label="c" type="m" corresp="#s2:l4">oprecht</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In al sijn doen en <rhyme label="b" type="f" corresp="#s2:l3">wandel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die alle werelts <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Niet soo veel acht als <rhyme label="a" type="m" corresp="#s3:l1">dat</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die alle <rhyme label="b" type="f">grootsigheden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Rijckdom en <rhyme label="c" type="m">heerlijckheyt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Wat hier beneden <rhyme label="c" type="m" corresp="#s3:l4">leyt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Weet onder voet te <rhyme label="b" type="f" corresp="#s3:l3">treden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die met de Werelt <rhyme label="a" type="m">spot</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En steedts om hoogh na <rhyme label="a" type="m" corresp="#s4:l1">Godt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Sijn sinnen komt te <rhyme label="b" type="f">sturen</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Dit’s sijn vermaack en <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die namaels geeft een <rhyme label="c" type="m" corresp="#s4:l4">rust</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Die eeuwighlijck sal <rhyme label="b" type="f" corresp="#s4:l3">duren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Al die soo zijn <rhyme label="a" type="m">gesint</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die zeylen voor de <rhyme label="a" type="m" corresp="#s5:l1">wint</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Na d’Hemel, door <rhyme label="b" type="f">verachten</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van Werelt, Rijckdom, <rhyme label="c" type="m">Eer</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Waer voor sy namaels <rhyme label="c" type="m" corresp="#s5:l4">weer</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Een beter goedt <rhyme label="b" type="f" corresp="#s5:l3">verwachten</rhyme>.</l>
      </lg>
    </lg>
  </text>
