    <melody>Psalm 103 Datheen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Heylige geest, fonteyne aller <rhyme label="a" type="f">goeden</rhyme></l>
        <l id="s1:l2" met="5" type="-+">Salf-olye der Christelijcker <rhyme label="a" type="f" corresp="#s1:l1">ghemoeden</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Vervuldt ons hert met u hemelsche <rhyme label="b" type="m">cracht</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Wtdeylster van de Goddelijcke <rhyme label="c" type="f">minne</rhyme>,</l>
        <l id="s1:l5" met="5" type="-+">Maekt ons bequaem, op dat wy recht van <rhyme label="c" type="f" corresp="#s1:l4">sinne</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">V heerlijckheydt uytbreyden met <rhyme label="b" type="m" corresp="#s1:l3">aendacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Heylighe Geest ghy zijt een eeuwigh <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Gheen Creatuer, die men can sien of <rhyme label="a" type="f" corresp="#s2:l1">lesen</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Doch Creatuer van u getuyg’nis <rhyme label="b" type="m">geeft</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Want de heyl’ghe menschen van u <rhyme label="c" type="f">ghedreven</rhyme>,</l>
        <l id="s2:l5" met="5" type="-+">Hebben de schrift door u wijsheydt <rhyme label="c" type="f" corresp="#s2:l4">beschreven</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Waer van ‘t vernuft geen recht begrijp en <rhyme label="b" type="m" corresp="#s2:l3">heeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Want ghy zijt reyn, eenvuldig van <rhyme label="a" type="f">manieren</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">De werelt wil haer wijsheyt hoog <rhyme label="a" type="f" corresp="#s3:l1">vercieren</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">‘s En kent u niet, o Duyve, soet van <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Haer wysen in haer eyghen wijsheydt <rhyme label="c" type="f">volen</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">En u wijsheyt die blijft voor haer <rhyme label="c" type="f" corresp="#s3:l4">verholen</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Die ghy allene den cleynen <rhyme label="b" type="m" corresp="#s3:l3">openbaert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Heylige Geest, Gesante uyt den <rhyme label="a" type="f">hoogen</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Ghy stelt den mensch de liefde Godts voor <rhyme label="a" type="f" corresp="#s4:l1">oogen</rhyme></l>
        <l id="s4:l3" met="5" type="-+">Om te beweghen sijn versteende <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Wat nsonden dat den mensch hier heeft <rhyme label="c" type="f">beganghen</rhyme>,</l>
        <l id="s4:l5" met="5" type="-+">Daer van sal hy vergiffenis <rhyme label="c" type="f" corresp="#s4:l4">ontfanghen</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Maer die u lastert niet vergheven <rhyme label="b" type="m" corresp="#s4:l3">wert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">God’lijcke strael, seer suyver van <rhyme label="a" type="f">naturen</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">In een quaet-will’ghe ziel cont ghy niet <rhyme label="a" type="f" corresp="#s5:l1">duren</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Maer die u stemme hoort en u op <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s5:l4" met="5" type="-+">By dien comt ghy seer lieffelijck <rhyme label="c" type="f">ghesteeken</rhyme>,</l>
        <l id="s5:l5" met="5" type="-+">En reynigt hem van alle sijn <rhyme label="c" type="f" corresp="#s5:l4">gebreken</rhyme></l>
        <l id="s5:l6" met="5" type="-+">Ia tot een Tempel maeckt ghy sijn <rhyme label="b" type="m" corresp="#s5:l3">gemoedt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Door u beleydt den vader uyt den <rhyme label="a" type="f">throone</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Met Iesum Christum synen lieven <rhyme label="a" type="f" corresp="#s6:l1">soone</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">Comen te saem woonen by s’menschen <rhyme label="b" type="m">kint</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">Siet daer een hutte Godes by de <rhyme label="c" type="f">menschen</rhyme>,</l>
        <l id="s6:l5" met="5" type="-+">Wat mach men soeter paringe <rhyme label="c" type="f" corresp="#s6:l4">gewenschen</rhyme>,</l>
        <l id="s6:l6" met="5" type="-+">Het is de hooghste vreughde die men <rhyme label="b" type="m" corresp="#s6:l3">vint</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">O soete cracht van Godt neder <rhyme label="a" type="f">ghesonden</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Om ‘smenschen hert met liefde te <rhyme label="a" type="f" corresp="#s7:l1">ghewonden</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">Om ‘smenschen hert te openen ‘t <rhyme label="b" type="m">verstant</rhyme>,</l>
        <l id="s7:l4" met="5" type="-+">Om ‘smenschen hert te dryven en te <rhyme label="c" type="f">leyden</rhyme>,</l>
        <l id="s7:l5" met="5" type="-+">Om ‘smenschen hert Godformig te <rhyme label="c" type="f" corresp="#s7:l4">bereyden</rhyme>,</l>
        <l id="s7:l6" met="5" type="-+">Om ‘smenschen hert te sijn een sekere <rhyme label="b" type="m" corresp="#s7:l3">pant</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Dit seker pant Gods kind’ren wert <rhyme label="a" type="f">ghegeven</rhyme>,</l>
        <l id="s8:l2" met="5" type="-+">Dies sy met hem in waeren vrede <rhyme label="a" type="f" corresp="#s8:l1">leven</rhyme>,</l>
        <l id="s8:l3" met="5" type="-+">Lieff’lijck ghetroost en van vreese <rhyme label="b" type="m">bevrijt</rhyme>,</l>
        <l id="s8:l4" met="5" type="-+">Want hy die vreest heeft eenigsins noch <rhyme label="c" type="f">pyne</rhyme>,</l>
        <l id="s8:l5" met="5" type="-+">Maer die daer heeft der liefden mede <rhyme label="c" type="f" corresp="#s8:l4">eyne</rhyme>,</l>
        <l id="s8:l6" met="5" type="-+">Gestadigh is hy in den Geest <rhyme label="b" type="m" corresp="#s8:l3">verblijt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="-+">Heylige Geest, men hoort wel u <rhyme label="a" type="f">gheruchten</rhyme>,</l>
        <l id="s9:l2" met="5" type="-+">Maer daer ghy woont daer sietmen uwe <rhyme label="a" type="f" corresp="#s9:l1">vruchten</rhyme>,</l>
        <l id="s9:l3" met="5" type="-+">Vierige liefd’ en inwendighe <rhyme label="b" type="m">vreucht</rhyme>,</l>
        <l id="s9:l4" met="5" type="-+">Een vreedsaem hert seer vriendelijck en <rhyme label="c" type="f">goedich</rhyme>,</l>
        <l id="s9:l5" met="5" type="-+">Vol van geloof, geduldig, en <rhyme label="c" type="f" corresp="#s9:l4">sachtmoedigh</rhyme>,</l>
        <l id="s9:l6" met="5" type="-+">Met maticheyt bequaem tot alle <rhyme label="b" type="m" corresp="#s9:l3">deucht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="5" type="-+">Godts kind’ren die van u werden <rhyme label="a" type="f">ghedreven</rhyme>,</l>
        <l id="s10:l2" met="5" type="-+">En is geen wet noch reghel hier <rhyme label="a" type="f" corresp="#s10:l1">ghegeven</rhyme>,</l>
        <l id="s10:l3" met="5" type="-+">In alle waerheyt ghy haer leyden <rhyme label="b" type="m">sult</rhyme>,</l>
        <l id="s10:l4" met="5" type="-+">Leer-meesters vreemdt moghen sy wel <rhyme label="c" type="f">ontbeeren</rhyme>,</l>
        <l id="s10:l5" met="5" type="-+">V salvinge haer alle dinck can <rhyme label="c" type="f" corresp="#s10:l4">leeren</rhyme>,</l>
        <l id="s10:l6" met="5" type="-+">Want door de liefde werdet al <rhyme label="b" type="m" corresp="#s10:l3">vervult</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="5" type="-+">Ghy maecktse een die eerst waren <rhyme label="a" type="f">verscheyden</rhyme>,</l>
        <l id="s11:l2" met="5" type="-+">By u en is gheen Iode, Grieck, noch <rhyme label="a" type="f" corresp="#s11:l1">Heyden</rhyme>,</l>
        <l id="s11:l3" met="5" type="-+">V taal verstaet elck een in sijn <rhyme label="b" type="m">gheweet</rhyme>,</l>
        <l id="s11:l4" met="5" type="-+">En die van uwen wijn is <rhyme label="c" type="f">ingeschoncken</rhyme>,</l>
        <l id="s11:l5" met="5" type="-+">Die smelt in liefd’ en wort daer van so <rhyme label="c" type="f" corresp="#s11:l4">droncken</rhyme>,</l>
        <l id="s11:l6" met="5" type="-+">Dat hy hem selfs en alle dingh <rhyme label="b" type="m" corresp="#s11:l3">vergeet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="5" type="-+">Sorgh hy verliest oock lust tot dese <rhyme label="a" type="f">goeder</rhyme>,</l>
        <l id="s12:l2" met="5" type="-+">Hy weet van moeder, suster, noch van <rhyme label="a" type="f" corresp="#s12:l1">broeder</rhyme>,</l>
        <l id="s12:l3" met="5" type="-+">d’Oude gewoont gaet al uyt sijnen <rhyme label="b" type="m">sin</rhyme>,</l>
        <l id="s12:l4" met="5" type="-+">So dat hy met hem selden is <rhyme label="c" type="f">verlegen</rhyme>,</l>
        <l id="s12:l5" met="5" type="-+">Even gelijck de droncke menschen <rhyme label="c" type="f" corresp="#s12:l4">pleghen</rhyme>,</l>
        <l id="s12:l6" met="5" type="-+">Heylige Geest dat doet u soete <rhyme label="b" type="m" corresp="#s12:l3">minn</rhyme>’.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="5" type="-+">Heylige vloet, van boven af <rhyme label="a" type="f">ghevloten</rhyme>,</l>
        <l id="s13:l2" met="5" type="-+">De ziel daer ghy u selfs hebt in <rhyme label="a" type="f" corresp="#s13:l1">ghegoten</rhyme>,</l>
        <l id="s13:l3" met="5" type="-+">Heeft troost en vreucht oock midden in ‘t <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s13:l4" met="5" type="-+">Sy is door u verzegelt en <rhyme label="c" type="f">verbonden</rhyme>,</l>
        <l id="s13:l5" met="5" type="-+">En in de liefde Godts so gantsch <rhyme label="c" type="f" corresp="#s13:l4">verslonden</rhyme>,</l>
        <l id="s13:l6" met="5" type="-+">Al heeftse cruys nochtans s’en wanckelt <rhyme label="b" type="m" corresp="#s13:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="5" type="-+">Heylige Geest, de ziel daer ghy woont <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s14:l2" met="5" type="-+">Gheen creatuur en canse <rhyme label="a" type="f" corresp="#s14:l1">overwonnen</rhyme>,</l>
        <l id="s14:l3" met="5" type="-+">Want sy staet vast door u in Godt <rhyme label="b" type="m">gegront</rhyme>,</l>
        <l id="s14:l4" met="5" type="-+">In Godt die daer de meeste is van <rhyme label="c" type="f">allen</rhyme>,</l>
        <l id="s14:l5" met="5" type="-+">Wiens stercke handt sy niet en mach <rhyme label="c" type="f" corresp="#s14:l4">ontvallen</rhyme>,</l>
        <l id="s14:l6" met="5" type="-+">En dat uyt cracht van Godts eeuwigh <rhyme label="b" type="m" corresp="#s14:l3">verbont</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
