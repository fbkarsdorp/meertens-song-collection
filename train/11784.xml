<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11784</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>O zalig heilig Bethlehem</melody>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">AL eer ick sterf, soo bid ick <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Laet doch mijn wensch u oor <rhyme label="b" type="f">genaecken</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Twee dingen zijn 't die ick <rhyme label="a" type="m" corresp="#s1:l1">begeer</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Laet my daer van de vruchten <rhyme label="b" type="f" corresp="#s1:l2">smaecken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Afgodery noch <rhyme label="a" type="m">leugentael</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Laet Heer! mijn ziele niet <rhyme label="b" type="f">besmetten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Op dat ick van u woord niet <rhyme label="a" type="m" corresp="#s2:l1">dwael</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Noch uwe waerheyt magh <rhyme label="b" type="f" corresp="#s2:l2">verpletten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Noch rijckdom, waer uyt hooghmoed <rhyme label="a" type="m">rijst</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Noch armoe tot ondeughdigh <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Voor beyde, Heer! is 't dat my <rhyme label="a" type="m" corresp="#s3:l1">ijst</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dus wiltse my op d'aerd niet <rhyme label="b" type="f" corresp="#s3:l2">geven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Verleen my mijn bescheyden <rhyme label="a" type="m">maet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Mijn spijs en noodruft tot <rhyme label="b" type="f">behoeven</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">En dat ick my vernoegen <rhyme label="a" type="m" corresp="#s4:l1">laet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Noch in het Wereldts niet <rhyme label="b" type="f" corresp="#s4:l2">bedroeven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Of anders soo ick, wierde <rhyme label="a" type="m">trots</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dan soud' ick u, O Heer! niet <rhyme label="b" type="f">kennen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Want overvloedt den Mensch maeckt <rhyme label="a" type="m" corresp="#s5:l1">spots</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En wil sich aen geen tucht <rhyme label="b" type="f" corresp="#s5:l2">gewennen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">De armoe doolt van 't rechte <rhyme label="a" type="m">spoor</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En geeft sich, door gebreck, tot <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Tot dievery, en leent het <rhyme label="a" type="m" corresp="#s6:l1">oor</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Tot schelmery en snoode <rhyme label="b" type="f" corresp="#s6:l2">vonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Geef daerom, Heer! dat ick <rhyme label="a" type="m">vernoegh</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En niet spreeck trots, wie is de <rhyme label="b" type="f">Heere</rhyme>!</l>
        <l id="s7:l3" met="4" type="-+">Noch my door d'armoe niet <rhyme label="a" type="m" corresp="#s7:l1">vervoegh</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Tot quaed geselschap en <rhyme label="b" type="f" corresp="#s7:l2">oneere</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O wie sich dan gerust en <rhyme label="a" type="m">stil</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">‘ In beydts kan even maetigh <rhyme label="b" type="f">voegen</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">‘ 't Zy rijck of arm, soo 't Godt dan <rhyme label="a" type="m" corresp="#s8:l1">wil</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">‘ Die sal sich altijdt wel <rhyme label="b" type="f" corresp="#s8:l2">vernoegen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
