      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">PAulus doet ons een goedt <rhyme label="a" type="m">vermaen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Tot Titum, daer wy <rhyme label="b" type="f">mercken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat alle die genomen <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Hebben 't gheloove <rhyme label="a" type="m" corresp="#s1:l1">saen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Moeten neerstigh <rhyme label="a" type="m" corresp="#s1:l1">voortgaen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In alle goede <rhyme label="b" type="f" corresp="#s1:l2">wercken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al hadt ghy een geloove so <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat ghy berghen <rhyme label="b" type="f">versteldet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">End' waerdt sonder de liefde <rhyme label="a" type="m" corresp="#s2:l1">bloot</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ten baet u niet ter <rhyme label="a" type="m" corresp="#s2:l1">noot</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">'Tgheloof is sonder wercken <rhyme label="a" type="m" corresp="#s2:l1">doodt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hierom het niet en <rhyme label="b" type="f" corresp="#s2:l2">gheldet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer dat daer gheldt in Christo <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Is 'tgheloove <rhyme label="b" type="f">ghestadigh</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">D'welck niet en is verstorven <rhyme label="a" type="m" corresp="#s3:l1">swaer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Stil ende ledigh, <rhyme label="a" type="m" corresp="#s3:l1">maer</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat neerstigh is <rhyme label="a" type="m" corresp="#s3:l1">eenpaer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Door de liefde <rhyme label="b" type="f" corresp="#s3:l2">weldadigh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'Tgheloove, dadigh dagh ende <rhyme label="a" type="m">nacht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Door liefd' in Godts <rhyme label="b" type="f">gheboden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hebt ghy dat vast in u <rhyme label="a" type="m" corresp="#s4:l1">ghedacht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ghy zijt van Godts <rhyme label="a" type="m" corresp="#s4:l1">gheslacht</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Indien ghy zijt met <rhyme label="a" type="m" corresp="#s4:l1">kracht</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Des werelts lust <rhyme label="b" type="f" corresp="#s4:l2">onvloden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo ghy die lust der wereldt <rhyme label="a" type="m">blent</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ontvloden nu <rhyme label="b" type="f">misprijset</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Door dat ghy Christum Iesum <rhyme label="a" type="m" corresp="#s5:l1">kent</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Al u neerstigheyt <rhyme label="a" type="m" corresp="#s5:l1">went</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat ghy deught <rhyme label="a" type="m" corresp="#s5:l1">diligent</rhyme></l>
        <l id="s5:l6" met="3" type="-+">In u gheloof <rhyme label="b" type="f" corresp="#s5:l2">bewijset</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Bewijsen oock inder deught men <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wetenschap, end' in <rhyme label="b" type="f">desen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Soberheyt oft matigheyt <rhyme label="a" type="m" corresp="#s6:l1">vroet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">End' in matigheyt <rhyme label="a" type="m" corresp="#s6:l1">goet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Verduldigheyt <rhyme label="a" type="m" corresp="#s6:l1">soet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Met een Godtsaligh <rhyme label="b" type="f" corresp="#s6:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">In der Godtsaligheyt noch <rhyme label="a" type="m">sy</rhyme></l>
        <l id="s7:l2" met="3" type="-+">De broederlijcke <rhyme label="b" type="f">liefde</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Daer toe ghemeene liefde <rhyme label="a" type="m" corresp="#s7:l1">vry</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Elck mach nu sien of <rhyme label="a" type="m" corresp="#s7:l1">hy</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Al dit rijckelijck <rhyme label="a" type="m" corresp="#s7:l1">by</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Heeft, ghelijck Petrus <rhyme label="b" type="f" corresp="#s7:l2">briefde</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Petrus briefde, wien in 't <rhyme label="a" type="m">ghetal</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Dit rijckelijck is <rhyme label="b" type="f">beneven</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">In 's Heeren kennisse niet <rhyme label="a" type="m" corresp="#s8:l1">smal</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hy vruchtbaer wesen <rhyme label="a" type="m" corresp="#s8:l1">sal</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Maer die niet en heeft <rhyme label="a" type="m" corresp="#s8:l1">al</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">By hem, is blindt <rhyme label="b" type="f" corresp="#s8:l2">beseven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Blindt is hy en tast met der <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Van sijn voorleden <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">De reyninghe schoon en <rhyme label="a" type="m" corresp="#s9:l1">playsant</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Gaet al uyt sijn <rhyme label="a" type="m" corresp="#s9:l1">verstant</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Hierom broeders <rhyme label="a" type="m" corresp="#s9:l1">vailiant</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Wil neerstigh zijn <rhyme label="b" type="f" corresp="#s9:l2">bevonden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Weest neerstigh dan om uwen roep <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Ende verkiesingh <rhyme label="b" type="f">blijde</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Te bevestigen met wercken <rhyme label="a" type="m" corresp="#s10:l1">goedt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Want als ghy dit al <rhyme label="a" type="m" corresp="#s10:l1">doet</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Niet sondighen <rhyme label="a" type="m" corresp="#s10:l1">onvroet</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Sult ghy te ghenen <rhyme label="b" type="f" corresp="#s10:l2">tijde</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dit doende mijn vrienden <rhyme label="a" type="m">autentijck</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Soo sal u <rhyme label="b" type="f">lieden</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Werden bereydt <rhyme label="a" type="m" corresp="#s11:l1">overvloedelijck</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Den ingangh in dat <rhyme label="a" type="m" corresp="#s11:l1">rijck</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Des Heeren <rhyme label="a" type="m" corresp="#s11:l1">magnifijck</rhyme>.</l>
        <l id="s11:l6" met="3" type="-+">Amen, dat moet <rhyme label="b" type="f" corresp="#s11:l2">gheschieden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
