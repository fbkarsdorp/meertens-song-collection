    <melody>Het vinnige stralen van de zon</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jodocus van Lodenstein</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEt vinnig stralen van de <rhyme label="a" type="m">Son</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ontschuyl ick in dees' <rhyme label="b" type="f">lom-mer</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Oh! of dit bosje klappen <rhyme label="a" type="m" corresp="#s1:l1">con</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wat melden 't al een <rhyme label="b" type="f" corresp="#s1:l2">com-mer</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'t Becommert hert hier treuren <rhyme label="a" type="m">gaat</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Als 't sig, helas! <rhyme label="b" type="f">bedrogen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">De wereld daar het hert <rhyme label="a" type="m" corresp="#s2:l1">opstaat</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En sijn beloft vindt <rhyme label="b" type="f" corresp="#s2:l2">logen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Alleen mijn Herder altijt <rhyme label="a" type="m">stuyrt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Na d' oude lief sijn <rhyme label="b" type="f">sinnen</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Of 't weygren lang hertneckig <rhyme label="a" type="m" corresp="#s3:l1">duyrd'</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Stantvastig duyrt sijn <rhyme label="b" type="f" corresp="#s3:l2">minnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dies treckt mijn hertje nu so <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">So seer, en ick sal 't <rhyme label="b" type="f">wagen</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Want die my hare min bien <rhyme label="a" type="m" corresp="#s4:l1">meer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Haar minnen sijn maar <rhyme label="b" type="f" corresp="#s4:l2">vlagen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maar vlagen die thans <rhyme label="a" type="m">overgaan</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En met een schicht <rhyme label="b" type="f">vervallen</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Ick sie alleen mijn Herder <rhyme label="a" type="m" corresp="#s5:l1">aan</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Stantvastig onder <rhyme label="b" type="f" corresp="#s5:l2">allen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maar of 't u miste blinde <rhyme label="a" type="m">maagt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Al vast verliest g' uw <rhyme label="b" type="f">lusten</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">'T is seker die geen lust <rhyme label="a" type="m" corresp="#s6:l1">gewaagt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En vind nog heyl nog <rhyme label="b" type="f" corresp="#s6:l2">rusten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dus mijm'rend treck ick na mijn <rhyme label="a" type="m">Son</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En wagt hem in dees' <rhyme label="b" type="f">lommer</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Oh! of dit gosje clappen <rhyme label="a" type="m" corresp="#s7:l1">con</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Wat meldent al een <rhyme label="b" type="f" corresp="#s7:l2">commer</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
