  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Hoort doch my eens <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Hoort doch my eens <rhyme label="b" type="m">aen</rhyme>;</l>
        <l id="s1:l3" met="3" type="+-">Werdt tot deught <rhyme label="a" type="f" corresp="#s1:l1">ontsteken</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Door dit soet <rhyme label="b" type="m" corresp="#s1:l2">vermaen</rhyme>;</l>
        <l id="s1:l5" met="3" type="+-">Ghy, dien ick <rhyme label="c" type="f">beminne</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Tot uw' <rhyme label="d" type="m">saligheydt</rhyme>;</l>
        <l id="s1:l7" met="3" type="+-">Ghy, op wien mijn <rhyme label="c" type="f" corresp="#s1:l5">sinnen</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Altijdt sijn <rhyme label="d" type="m" corresp="#s1:l6">geleydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">'k Meen u, <rhyme label="a" type="f">Mede-Borgers</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">'k Meen u, Ionge <rhyme label="b" type="m">Ieught</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">'k Bidd' u zijt <rhyme label="a" type="f" corresp="#s2:l1">besorgers</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Van de reyne <rhyme label="b" type="m" corresp="#s2:l2">deught</rhyme>:</l>
        <l id="s2:l5" met="3" type="+-">Wilt deughdtsamigh <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Stichtigh t'allen <rhyme label="d" type="m">tijdt</rhyme>;</l>
        <l id="s2:l7" met="3" type="+-">Uyt uw' hart <rhyme label="c" type="f" corresp="#s2:l5">verdreven</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Zy den haet en <rhyme label="d" type="m" corresp="#s2:l6">nijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Wilt staeghs liefde <rhyme label="a" type="f">dragen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Tot uw' <rhyme label="b" type="m">mede-mensch</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Dit is Godts <rhyme label="a" type="f" corresp="#s3:l1">behagen</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Dit is mijne <rhyme label="b" type="m" corresp="#s3:l2">wensch</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Wilt van 't quaedt <rhyme label="c" type="f">verrijsen</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Alle sonden <rhyme label="d" type="m">schuyt</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Volght den raedt der <rhyme label="c" type="f" corresp="#s3:l5">wijsen</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Munt in deughden <rhyme label="d" type="m" corresp="#s3:l6">uyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Wilt uw' lieve <rhyme label="a" type="f">Ouders</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Onderdanigh <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Die uw' <rhyme label="a" type="f" corresp="#s4:l1">onderhouders</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Zijn, in druck en <rhyme label="b" type="m" corresp="#s4:l2">pijn</rhyme>:</l>
        <l id="s4:l5" met="3" type="+-">Wilt haer niet <rhyme label="c" type="f">belasten</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Of beswaren <rhyme label="d" type="m">oyt</rhyme>;</l>
        <l id="s4:l7" met="3" type="+-">Zijn gheen harde <rhyme label="c" type="f" corresp="#s4:l5">quasten</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Maeckt haer noyt <rhyme label="d" type="m" corresp="#s4:l6">beroyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Wilt 't geselschap <rhyme label="a" type="f">mijden</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Laet het vuyl <rhyme label="b" type="m">gespuys</rhyme>;</l>
        <l id="s5:l3" met="3" type="+-">Maeckt ten allen <rhyme label="a" type="f" corresp="#s5:l1">tijden</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Vrough te wesen <rhyme label="b" type="m" corresp="#s5:l2">t'huys</rhyme>:</l>
        <l id="s5:l5" met="3" type="+-">Schuwt by nacht de <rhyme label="c" type="f">straten</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Mindt de <rhyme label="d" type="m">soberheydt</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Schuwt de vuyle <rhyme label="c" type="f" corresp="#s5:l5">gaten</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Mindt de <rhyme label="d" type="m" corresp="#s5:l6">suyverheydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Denckt op Godes <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Denckt op Godt uw' <rhyme label="b" type="m">Heer</rhyme>;</l>
        <l id="s6:l3" met="3" type="+-">Iesus kan <rhyme label="a" type="f" corresp="#s6:l1">bedrogen</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Worden <rhyme label="b" type="m" corresp="#s6:l2">nimmermeer</rhyme>.</l>
        <l id="s6:l5" met="3" type="+-">Gaet, en zijt <rhyme label="c" type="f">gedachtich</rhyme></l>
        <l id="s6:l6" met="3" type="+-">'t Geen ick heb <rhyme label="d" type="m">geseydt</rhyme>:</l>
        <l id="s6:l7" met="3" type="+-">Maeckt voor Godt <rhyme label="c" type="f" corresp="#s6:l5">Almachtigh</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Uwe ziel <rhyme label="d" type="m" corresp="#s6:l6">bereydt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">D'Heer wil u <rhyme label="a" type="f">ontfermen</rhyme></l>
        <l id="s7:l2" met="3" type="+-">D'Heer zy u een <rhyme label="b" type="m">helm</rhyme>;</l>
        <l id="s7:l3" met="3" type="+-">D'Heer wil u <rhyme label="a" type="f" corresp="#s7:l1">beschermen</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Voor den helschen <rhyme label="b" type="m" corresp="#s7:l2">Schelm</rhyme>.</l>
        <l id="s7:l5" met="3" type="+-">Toont, Ã´ Heer! <rhyme label="c" type="f">genade</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Door u dierbaer <rhyme label="d" type="m">bloedt</rhyme>;</l>
        <l id="s7:l7" met="3" type="+-">Heer! wilt ons <rhyme label="c" type="f" corresp="#s7:l5">versaden</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Met het <rhyme label="d" type="m" corresp="#s7:l6">Opper-Goedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
