  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">BRoeckers <rhyme label="a" type="m">volghtna</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Sint Ians leven en <rhyme label="b" type="f">deughden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo ghy Maeght, Man en <rhyme label="c" type="m">Vrouw</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Dan Godts <rhyme label="a" type="m" corresp="#s1:l1">genae</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Sult krijgen, en sijn <rhyme label="b" type="f" corresp="#s1:l2">vreughden</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Helpt d'Armen in haer <rhyme label="c" type="m" corresp="#s1:l3">rouw</rhyme>.</l>
        <l id="s1:l7" met="3" type="+-">En weest Godt <rhyme label="c" type="m" corresp="#s1:l3">getrouw</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Houdt altijdt Godt voor <rhyme label="d" type="f">oogen</rhyme>:</l>
        <l id="s1:l9" met="4" type="+-">Schout dronckenschap, haet en <rhyme label="e" type="m">nijdt</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">En wilt geen sonde <rhyme label="d" type="f" corresp="#s1:l8">doogen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Sint Ian <rhyme label="a" type="m">Baptist</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Verkrijght door uw' <rhyme label="b" type="f">gebeden</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Van Iesu Godes <rhyme label="c" type="m">Soon</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Dat wy van <rhyme label="a" type="m" corresp="#s2:l1">twist</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ons hert, goedt ende <rhyme label="b" type="f" corresp="#s2:l2">leden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Houwen suyver en <rhyme label="c" type="m" corresp="#s2:l3">schoon</rhyme>.</l>
        <l id="s2:l7" met="3" type="+-">En heyl'ge <rhyme label="c" type="m" corresp="#s2:l3">Patroon</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Dat wy altijdt, <rhyme label="d" type="f">wandelen</rhyme></l>
        <l id="s2:l9" met="4" type="+-">In deughden, en Godes <rhyme label="e" type="m">wil</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Volbrengen met <rhyme label="d" type="f" corresp="#s2:l8">d'Engelen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Heyl'ghe <rhyme label="a" type="m">Patroon</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sint Jan wilt doch <rhyme label="b" type="f">verwerven</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Voor die van <rhyme label="c" type="m">Groote-broeck</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Van Godes <rhyme label="a" type="m" corresp="#s3:l1">Soon</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat sy in hare <rhyme label="b" type="f" corresp="#s3:l2">sterven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ontgaen den helschen <rhyme label="c" type="m" corresp="#s3:l3">vloeck</rhyme>.</l>
        <l id="s3:l7" met="3" type="+-">Noch is ons <rhyme label="c" type="m" corresp="#s3:l3">versoeck</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Ey! wilt ons 't Lam Godts <rhyme label="d" type="f">toone</rhyme></l>
        <l id="s3:l9" met="4" type="+-">In d'ure van onse <rhyme label="e" type="m">doodt</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">En krijght ons 's Hemels <rhyme label="d" type="f" corresp="#s3:l8">Throone</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Geeft Iesu <rhyme label="a" type="m">mijn</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">En allegaer, die <rhyme label="b" type="f">loven</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Sint Ians lof ende <rhyme label="c" type="m">deught</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">U klaer <rhyme label="a" type="m" corresp="#s4:l1">aenschijn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Te sien in 's Hemels <rhyme label="b" type="f" corresp="#s4:l2">Hoven</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Daer by uw' Hemels <rhyme label="c" type="m" corresp="#s4:l3">vreught</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">En 's Hemels <rhyme label="c" type="m" corresp="#s4:l3">geneught</rhyme>.</l>
        <l id="s4:l8" met="3" type="-+">Lam Godts voor uw' wy <rhyme label="d" type="f">vallen</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Neemt van ons de sonden <rhyme label="e" type="m">af</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Niet van een, maer van <rhyme label="d" type="f" corresp="#s4:l8">alle</rhyme>.</l>
      </lg>
    </lg>
  </text>
