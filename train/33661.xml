      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SInte Michiel weest seer <rhyme label="a" type="m">gegroet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van alle <rhyme label="b" type="f">Catholijken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gy sijt ons verdeediger <rhyme label="a" type="m" corresp="#s1:l1">goet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En leyder tot Goodts <rhyme label="b" type="f" corresp="#s1:l2">Rijke</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En gy sijt in het Hemelsch <rhyme label="a" type="m">heyr</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Een Prins, een hoogh <rhyme label="b" type="f">Aerts-Engel</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Gy u stelden dapper te <rhyme label="a" type="m" corresp="#s2:l1">weyr</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Tegens Satan dien <rhyme label="b" type="f" corresp="#s2:l2">bengel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die uyt een te verheven <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wouw 's Hemels top <rhyme label="b" type="f">beklimmen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ende brengen onder sijn <rhyme label="a" type="m" corresp="#s3:l1">voet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Goodts Starren die daer <rhyme label="b" type="f" corresp="#s3:l2">glimmen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die in het Noorden sijne <rhyme label="a" type="m">Rijk</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wouw stellen; ende <rhyme label="b" type="f">weesen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Godt den alderhooghsten <rhyme label="a" type="m" corresp="#s4:l1">gelijk</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Maer gy beschaemden <rhyme label="b" type="f" corresp="#s4:l2">deesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Gy seyde, wie is Godt <rhyme label="a" type="m">gelijk</rhyme>?</l>
        <l id="s5:l2" met="3" type="-+">Dus wasser grooten <rhyme label="b" type="f">strijde</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Boven in het Hemelsche <rhyme label="a" type="m" corresp="#s5:l1">Rijk</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gy wouwd' dien Draek niet <rhyme label="b" type="f" corresp="#s5:l2">lijde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daerom gy met uw' <rhyme label="a" type="m">Engelen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Den Draek hebt hardt <rhyme label="b" type="f">bestreede</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">De Draek u quam strijdt <rhyme label="a" type="m" corresp="#s6:l1">leveren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met sijne Engels <rhyme label="b" type="f" corresp="#s6:l2">meede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Sy tegens u vermoghten <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Het wierd' haer veel te <rhyme label="b" type="f">bange</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dus gy haest ten Hemel <rhyme label="a" type="m" corresp="#s7:l1">uytstiet</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Dien Draek, dien ouden <rhyme label="b" type="f" corresp="#s7:l2">Slange</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy wierd' gesmeeten op der <rhyme label="a" type="m">Aerd'</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Met sijne Engels <rhyme label="b" type="f">t'samen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als den Blixem, met eene <rhyme label="a" type="m" corresp="#s8:l1">vaerd'</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sy van den Hemel <rhyme label="b" type="f" corresp="#s8:l2">quamen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">U dan, o Hemel seer <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Met die daer sijt <rhyme label="b" type="f">woonaghtigh</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Wee u aerd' en wateren <rhyme label="a" type="m" corresp="#s9:l1">wijdt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Tot u komt Satan <rhyme label="b" type="f" corresp="#s9:l2">kraghtigh</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hy is soo vol <rhyme label="a" type="m">grammoedigheydt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Hy soekt sijn spijt te <rhyme label="b" type="f">wreeken</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Tegens die geen die sijn <rhyme label="a" type="m" corresp="#s10:l1">bereydt</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Te voeren Goodes <rhyme label="b" type="f" corresp="#s10:l2">teeken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hy weet ook wel sijn korten <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Dat hy hier magh <rhyme label="b" type="f">regneeren</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Want Goodts Soon komt ook met'er <rhyme label="a" type="m" corresp="#s11:l1">vlijt</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Om hem voorts te <rhyme label="b" type="f" corresp="#s11:l2">verneeren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Die komt hem trecken in <rhyme label="a" type="m">d'afgront</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Met sterke helsche <rhyme label="b" type="f">bande</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Op dat hy daer werd' <rhyme label="a" type="m" corresp="#s12:l1">t'allerstont</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Gepijnight in den <rhyme label="b" type="f" corresp="#s12:l2">brande</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Tot dat aen komt des oordeels <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Dan sal hy <rhyme label="b" type="f">wederomme</rhyme></l>
        <l id="s13:l3" met="4" type="-+">d'Uytverkoren leveren <rhyme label="a" type="m" corresp="#s13:l1">strijdt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Ontbonden <rhyme label="b" type="f" corresp="#s13:l2">wederomme</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Maer om de uytverkoren <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Dien tijdt werden <rhyme label="b" type="f">vermindert</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Dat sy niet en komen tot <rhyme label="a" type="m" corresp="#s14:l1">val</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Hy worden sal <rhyme label="b" type="f" corresp="#s14:l2">verhindert</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Hy sal met al sijn <rhyme label="a" type="m">Engelen</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">En met al de <rhyme label="b" type="f">sondaren</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">In de swarte <rhyme label="a" type="m" corresp="#s15:l1">duysternissen</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Des afgronds moeten <rhyme label="b" type="f" corresp="#s15:l2">varen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Sinte Michiel, Aerts-Engel <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Komt ons altijdt te <rhyme label="b" type="f">bate</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Sonderlingh in d'uyterste <rhyme label="a" type="m" corresp="#s16:l1">noot</rhyme></l>
        <l id="s16:l4" met="3" type="-+">En wilt ons niet <rhyme label="b" type="f" corresp="#s16:l2">verlate</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
