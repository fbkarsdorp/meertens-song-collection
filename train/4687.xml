<song>
  <meta>
    <id>4687</id>
    <date>
      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>leuven</orginal-name>
      <standard-name>Leuven, Belgium</standard-name>
      <coordinates>
        <lon>50.879202</lon>
        <lat>4.7011675</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Aanhoor toch naar mijn treuren</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DRie dingen sijn van <rhyme label="a" type="f">node</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Tot ider <rhyme label="b" type="m">Sacramant</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Voor eerst te zijn van <rhyme label="a" type="f" corresp="#s1:l1">Gode</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Den menschen voor <rhyme label="b" type="m" corresp="#s1:l2">gewend</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En dat als tot een <rhyme label="c" type="m">merk</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Van eenig heylig <rhyme label="c" type="m" corresp="#s1:l5">werk</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Daer deur zijn <rhyme label="d" type="m">hand</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Een salig pand Van <rhyme label="d" type="m" corresp="#s1:l7">goed</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Ons hebben <rhyme label="e" type="m">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dit vindmen al te <rhyme label="a" type="f">gader</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In’t Huwelijckse <rhyme label="b" type="m">Echt</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Want ’t geen den hoogsten <rhyme label="a" type="f" corresp="#s2:l1">Vader</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Hier opder aerden <rhyme label="b" type="m" corresp="#s2:l2">hecht</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">En kan noch daed noch <rhyme label="c" type="m">wensch</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ontbinden vanden <rhyme label="c" type="m" corresp="#s2:l5">mensch</rhyme>.</l>
        <l id="s2:l7" met="2" type="-+">En Paulus <rhyme label="d" type="m">doed</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Ons werden <rhyme label="d" type="m" corresp="#s2:l7">vroed</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Het merk// van ’t heilig <rhyme label="e" type="m">werk</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Iae zelfs de rijke <rhyme label="a" type="f">heylen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die Christus lieve <rhyme label="b" type="m">wet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ten oorber uit laet <rhyme label="a" type="f" corresp="#s3:l1">deylen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Aen ’t huwelijckse <rhyme label="b" type="m" corresp="#s3:l2">bed</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ter wijl hy ’t zwakste <rhyme label="c" type="m">hoofd</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Uit Godes naem <rhyme label="c" type="m" corresp="#s3:l5">belooft</rhyme></l>
        <l id="s3:l7" met="2" type="-+">De <rhyme label="d" type="m">zaligheyd</rhyme>//</l>
        <l id="s3:l8" met="2" type="-+">Te sijn <rhyme label="d" type="m" corresp="#s3:l7">bereyd</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Voor ’t Echt// beleeft te <rhyme label="e" type="m">recht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy zult, o Christen <rhyme label="a" type="f">wyven</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Vw’ zielen winnen, <rhyme label="b" type="m">ist</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Dat ghy maer komt te <rhyme label="a" type="f" corresp="#s4:l1">blijven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">(Door gunst van Iesus <rhyme label="b" type="m" corresp="#s4:l2">Christ</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">De quae begeerten <rhyme label="c" type="m">doof</rhyme>)</l>
        <l id="s4:l6" met="3" type="-+">Standvastig in’t <rhyme label="c" type="m" corresp="#s4:l5">geloof</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">In vreed’ end’ <rhyme label="d" type="m">in</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Geheil’gde <rhyme label="d" type="m" corresp="#s4:l7">min</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Bereyd// tot <rhyme label="e" type="m">soberheyd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ziet, dit sijn de <rhyme label="a" type="f">geschenken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die ons d’Apostel <rhyme label="b" type="m">heeft</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Bevolen <rhyme label="a" type="f" corresp="#s5:l1">t’overdenken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dat God den zijnen <rhyme label="b" type="m" corresp="#s5:l2">gheeft</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Met een beleefde <rhyme label="c" type="m">hand</rhyme></l>
        <l id="s5:l6" met="3" type="-+">In’t <rhyme label="c" type="m" corresp="#s5:l5">huwelijks-verband</rhyme>.</l>
        <l id="s5:l7" met="2" type="-+">Zoo datmen <rhyme label="d" type="m">moet</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Zoo grooten <rhyme label="d" type="m" corresp="#s5:l7">goed</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Wel naerstig doen <rhyme label="e" type="m">gestand</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gestand om af te <rhyme label="a" type="f">weren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Een vierderley <rhyme label="b" type="m">getal</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Van pesten en van <rhyme label="a" type="f" corresp="#s6:l1">zweren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die dik tot groot <rhyme label="b" type="m" corresp="#s6:l2">misval</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Ons brengen d’echten <rhyme label="c" type="m">staet</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">‘k Zeg ontrou, ende <rhyme label="c" type="m" corresp="#s6:l5">haet</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+"><rhyme label="d" type="m">Weerspannigheyd</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+"><rhyme label="d" type="m" corresp="#s6:l7">Onmatigheyd</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Bederf van ’t Christen <rhyme label="e" type="m">zaed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Heer Iesu! wegt, en <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En waerheyd niet te <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wild aen het <rhyme label="a" type="f" corresp="#s7:l1">huw’lijk</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Een wel bedaerde <rhyme label="b" type="m" corresp="#s7:l2">zin</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Daer deur by hen <rhyme label="c" type="m">erkend</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Zoo groten <rhyme label="c" type="m" corresp="#s7:l5">Sacrament</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Met hand en <rhyme label="d" type="m">hart</rhyme>//</l>
        <l id="s7:l8" met="2" type="-+">Beouffend <rhyme label="d" type="m" corresp="#s7:l7">werd</rhyme>//</l>
        <l id="s7:l9" met="3" type="-+">Tot een Godzalig <rhyme label="e" type="m">end</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
