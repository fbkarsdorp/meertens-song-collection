<song>
  <meta>
    <id>8068</id>
    <date>
      <year-start>1644</year-start>
      <year-end>1644</year-end>
    </date>
    <location>
      <orginal-name>hoorn</orginal-name>
      <standard-name>Hoorn, The Netherlands</standard-name>
      <coordinates>
        <lon>52.653272</lon>
        <lat>5.0735802</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Ach Gott vom Himmel</melody>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghy cleyne Christen hoopken <rhyme label="a" type="m">(och</rhyme>!)</l>
        <l id="s1:l2" met="3" type="-+">Moet wassen en <rhyme label="b" type="f">vermeeren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ghy zijt soo cleyne een schare <rhyme label="a" type="m" corresp="#s1:l1">doch</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt Godt met wercken <rhyme label="b" type="f" corresp="#s1:l2">eeren</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Siet niet op werelt, vleesch noch <rhyme label="c" type="m">bloet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Noch op dit cleyn verganckelijck <rhyme label="c" type="m" corresp="#s1:l5">goet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Maer slechts op 't woordt des <rhyme label="b" type="f" corresp="#s1:l2">Heeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Lieve Christen <rhyme label="a" type="m">vergaderingh</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ghy zijt van cleynen <rhyme label="b" type="f">hoope</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Vermaent malkander <rhyme label="a" type="m" corresp="#s2:l1">sonderlingh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat niemant 'truym door <rhyme label="b" type="f" corresp="#s2:l2">loope</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Slaet altoos op malkander <rhyme label="c" type="m">acht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Wacht dat niemandt van ons <rhyme label="c" type="m" corresp="#s2:l5">geslacht</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Sijn eerst' geboort' <rhyme label="b" type="f" corresp="#s2:l2">vercoope</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Christen ghy heyligh <rhyme label="a" type="m">Priesterdom</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Gaet niet op duyster <rhyme label="b" type="f">wegen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Siet niet met Loths huysvrouw <rhyme label="a" type="m" corresp="#s3:l1">weerom</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Daer ghy uyt zijt <rhyme label="b" type="f" corresp="#s3:l2">gestegen</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Wie aen den ploech hout en om <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Die en is nut tottet rijck' Gods <rhyme label="c" type="m" corresp="#s3:l5">niet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dus wandelt doch ter <rhyme label="b" type="f" corresp="#s3:l2">degen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Kinders Gods neemt u tijdt wel <rhyme label="a" type="m">waer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Tis schier de laetste <rhyme label="b" type="f">stonde</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wort nu niet mat noch <rhyme label="a" type="m" corresp="#s4:l1">wanckelbaer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In Godes woort <rhyme label="b" type="f" corresp="#s4:l2">bevonden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En laet de liefd' niet werden <rhyme label="c" type="m">cout</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Maer waeckt, bidt, altoos jonck en <rhyme label="c" type="m" corresp="#s4:l5">out</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Vyerich uyt 'sherten <rhyme label="b" type="f" corresp="#s4:l2">gronden</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och sticht malkander dagh en <rhyme label="a" type="m">nacht</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Vermaent den een den <rhyme label="b" type="f">ander</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Wacht dat niemandt van ons <rhyme label="a" type="m" corresp="#s5:l1">gheslacht</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In 't ongheloof <rhyme label="b" type="f" corresp="#s5:l2">verander</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Gheeft altoos goet exempel <rhyme label="c" type="m">voort</rhyme>.</l>
        <l id="s5:l6" met="4" type="-+">Wacht datmen niet quaets van u en <rhyme label="c" type="m" corresp="#s5:l5">hoort</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Maer leert, straft, dreyght <rhyme label="b" type="f" corresp="#s5:l2">malcander</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Eert Godt met liefde sonder <rhyme label="a" type="m">smert</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met herten, tonghen, <rhyme label="b" type="f">monden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wacht dat niemant in een boos <rhyme label="a" type="m" corresp="#s6:l1">hert</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Des ondeuchts wort <rhyme label="b" type="f" corresp="#s6:l2">bevonden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">'Twelck treedt van Godt en sijn <rhyme label="c" type="m">ghemeent</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Siet toe dat niemant wordt <rhyme label="c" type="m" corresp="#s6:l5">versteent</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Door 't valsch bedroch der <rhyme label="b" type="f" corresp="#s6:l2">sonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Godt wilt alleen navolghen <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Toont in als een nieu <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Laet Godts woordt niet ghelastert <rhyme label="a" type="m" corresp="#s7:l1">zijn</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Wilt goet exempel <rhyme label="b" type="f" corresp="#s7:l2">gheven</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Weest ghy een spieghel alle <rhyme label="c" type="m">man</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Datmen van u niet segghen en <rhyme label="c" type="m" corresp="#s7:l5">kan</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dat ghy quaedt hebt <rhyme label="b" type="f" corresp="#s7:l2">bedreven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Met wercken wilt volbringhen <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dat ghy met u tonghe <rhyme label="b" type="f">spreecket</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Wilt metter daedt volbrenghen <rhyme label="a" type="m" corresp="#s8:l1">snel</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dat u van Godt werdt <rhyme label="b" type="f" corresp="#s8:l2">ontdecket</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Wilt met den mondt belijden <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s8:l6" met="4" type="-+">En lochenent met de wercken <rhyme label="c" type="m" corresp="#s8:l5">siet</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Goedt te doen niet en <rhyme label="b" type="f" corresp="#s8:l2">vertrecket</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Met werck en daedt wilt bewijsen <rhyme label="a" type="m">jent</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Dat ghy zijt rechte <rhyme label="b" type="f">Christen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">De boom men aen zijn vruchten <rhyme label="a" type="m" corresp="#s9:l1">kent</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dus hebt gheen arghe <rhyme label="b" type="f" corresp="#s9:l2">listen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Volght vyerigh nae u Heer u <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Hebt hem lief, en hout sijn <rhyme label="c" type="m" corresp="#s9:l5">ghebodt</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Schout alle <rhyme label="b" type="f" corresp="#s9:l2">Antechristen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dat niemandt Godts ghenade <rhyme label="a" type="m">versuymt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Op datter niet een <rhyme label="b" type="f">quade</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Een bittere wortel uyt en <rhyme label="a" type="m" corresp="#s10:l1">schuymt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">En doet soo u siel <rhyme label="b" type="f" corresp="#s10:l2">schade</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">En gheeft laster noch <rhyme label="c" type="m">arghernis</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Noch oock gheen quaedt <rhyme label="c" type="m" corresp="#s10:l5">ghetuyghenis</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">En wijckt, soo van Godts <rhyme label="b" type="f" corresp="#s10:l2">pade</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Leven wilt nae Godts woordt en <rhyme label="a" type="m">leer</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Wilt in als ghelijck <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">V Vader, Meester ende <rhyme label="a" type="m" corresp="#s11:l1">Heer</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Volght recht in als nae <rhyme label="b" type="f" corresp="#s11:l2">desen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Bewijst met wercken en daedt <rhyme label="c" type="m">altijdt</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Dta ghy oprecht herboren <rhyme label="c" type="m" corresp="#s11:l5">zijt</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">En dat ghy Godt gaet <rhyme label="b" type="f" corresp="#s11:l2">vresen</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Doch wilt God u Prince, u <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Met werck en daedt <rhyme label="b" type="f">belijden</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Soeckt meer Gods eer // dan 'smenschen <rhyme label="a" type="m" corresp="#s12:l1">leer</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Wilt voor de waerheydt <rhyme label="b" type="f" corresp="#s12:l2">strijden</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Met ooghen traen // ick u <rhyme label="c" type="m">vermaen</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Wijckt gheensins van de rechte <rhyme label="c" type="m" corresp="#s12:l5">baen</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Wanckt niet aen beide <rhyme label="b" type="f" corresp="#s12:l2">zijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
