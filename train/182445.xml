    <melody>Ik ben een arme pelgrim hier</melody>
  <author>Tannetge Kornelis Blok</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoort wat ‘er onlangs geschied <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Men zal ‘t u heden gaen <rhyme label="b" type="f">verklaren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Hoe dat van <rhyme label="a" type="m" corresp="#s1:l1">Middelharrenis</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Visschers zijn <rhyme label="b" type="f" corresp="#s1:l2">uitgevaren</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">In ‘t leste van het oude <rhyme label="a" type="m">Iaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ianuary seven en <rhyme label="b" type="f">tagtig</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En hoe zy kwamen in ‘t <rhyme label="a" type="m" corresp="#s2:l1">gevaer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Door een onweder <rhyme label="b" type="f" corresp="#s2:l2">kragtig</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een grooten storm is daer <rhyme label="a" type="m">ontstaen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Als dese Lieden in Zee <rhyme label="b" type="f">waren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soo dat zy vreesden te <rhyme label="a" type="m" corresp="#s3:l1">vergaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Door ‘t gewelt van de <rhyme label="b" type="f" corresp="#s3:l2">Baren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een Selerman wierd met droefheid <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van de Zeebaren <rhyme label="b" type="f">weggenomen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daer zijn Volk hem in desen <rhyme label="a" type="m" corresp="#s4:l1">noot</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Niet konde ‘t hulpe <rhyme label="b" type="f" corresp="#s4:l2">komen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dewijle dat de Schuyt <rhyme label="a" type="m">omlag</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En was het niet in haer <rhyme label="b" type="f">vermeugen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Sy zullen desen Nieuw Iaers <rhyme label="a" type="m" corresp="#s5:l1">dag</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Door dit geval wel <rhyme label="b" type="f" corresp="#s5:l2">heugen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wel armen Zeeman wat <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Sal u ten laetsten niet <rhyme label="b" type="f">ontmoeten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Schoon u somtijds goet loon <rhyme label="a" type="m" corresp="#s6:l1">geniet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">‘t kan dit niet al <rhyme label="b" type="f" corresp="#s6:l2">versoeten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nu om dat zy ‘t huys quamen <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als na verloop van weynig <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Was Middelharnis vol <rhyme label="a" type="m" corresp="#s7:l1">verdriet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Vol zwarigheid en <rhyme label="b" type="f" corresp="#s7:l2">klagen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De Vrouywen schreyden om haer <rhyme label="a" type="m">Mans</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Een yegelijk die was vol <rhyme label="b" type="f">schromen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Om dat er scheen te zijn geen <rhyme label="a" type="m" corresp="#s8:l1">kans</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dat zy weer zouden <rhyme label="b" type="f" corresp="#s8:l2">komen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maer God op wiens hulp en <rhyme label="a" type="m">bystand</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Dat wy altijd moeten <rhyme label="b" type="f">betrouwen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Die heeft haer weer gebragt te <rhyme label="a" type="m" corresp="#s9:l1">Land</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Al te samen <rhyme label="b" type="f" corresp="#s9:l2">behouwen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Behalven desen Man <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Het gene dat is te <rhyme label="b" type="f">betreuren</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En hadden ook veel scha <rhyme label="a" type="m" corresp="#s10:l1">geleen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Gelijk wel kan <rhyme label="b" type="f" corresp="#s10:l2">gebeuren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Met groote blijdschap en <rhyme label="a" type="m">jolijt</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Sijn deze vier Schuyten <rhyme label="b" type="f">ontfangen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Heel Middelharnis was <rhyme label="a" type="m" corresp="#s11:l1">verblijd</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Om haer met groot <rhyme label="b" type="f" corresp="#s11:l2">verlangen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ia wild in daed en niet in <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Hier in vrolijk en dankbaer <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Dewijl dat deze Lieden <rhyme label="a" type="m" corresp="#s12:l1">zijn</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Als van de dood <rhyme label="b" type="f" corresp="#s12:l2">verresen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hoe meenig raekt ‘er in <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">En door ‘t geweld der Zee <rhyme label="b" type="f">verslonden</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Gelijk nog onlangs is <rhyme label="a" type="m" corresp="#s13:l1">geschiedt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">En men wel heeft <rhyme label="b" type="f" corresp="#s13:l2">bevonden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Om dat drie Schuiten hier van <rhyme label="a" type="m">daen</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Binnen twee Iaren zijn <rhyme label="b" type="f">gebleven</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">En al het Volk in Zee <rhyme label="a" type="m" corresp="#s14:l1">vergaen</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Daer lieten zy haer <rhyme label="b" type="f" corresp="#s14:l2">leven</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dus Zeeman pleegt <rhyme label="a" type="m">voorzigtigheid</rhyme></l>
        <l id="s15:l2" met="3" type="-+">En wilt altijd op God <rhyme label="b" type="f">betrouwen</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Die wensch is dat u staeg <rhyme label="a" type="m" corresp="#s15:l1">geleyt</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Als gy de zee gaet <rhyme label="b" type="f" corresp="#s15:l2">bouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
