  <author>Frans vander Straten de jongere</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOpen laet ons broeders <rhyme label="a" type="m">vailiant</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Op den Heere <rhyme label="b" type="f">verheuen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Onsen Hoorn, ende <rhyme label="a" type="m" corresp="#s1:l1">Heylant</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ter salicheyt <rhyme label="b" type="f" corresp="#s1:l2">becleuen</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Dus hopen <rhyme label="c" type="m">wy</rhyme>.</l>
        <l id="s1:l6" met="4" type="-+">Op hem, van hem t'eewich <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Te crijgen <rhyme label="c" type="m" corresp="#s1:l5">vry</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Eenen schilt is die Heere <rhyme label="a" type="m">geheel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Alle die op hem <rhyme label="b" type="f">vertrouwen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Schincken hy haer zijn <rhyme label="a" type="m" corresp="#s2:l1">erfdeel</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hier naer sal sonder <rhyme label="b" type="f" corresp="#s2:l2">flauwen</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Dus hopen <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Op sulcx dat ons nae <rhyme label="b" type="f" corresp="#s2:l2">behauwen</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Sal wesen <rhyme label="c" type="m" corresp="#s2:l5">bly</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Niet en sal ons de hope <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Laten t'eenige <rhyme label="b" type="f">tijde</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Beschaempt blyven in <rhyme label="a" type="m" corresp="#s3:l1">tegenspoet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Maer vast sonder <rhyme label="b" type="f" corresp="#s3:l2">vermyden</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Recht hopen <rhyme label="c" type="m">wy</rhyme>.</l>
        <l id="s3:l6" met="4" type="-+">Moeten, op de ghenade <rhyme label="b" type="f" corresp="#s3:l2">blijde</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Jesu <rhyme label="c" type="m" corresp="#s3:l5">Christi</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">DE hope naet t'gene men <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Voor ooghen hier op <rhyme label="b" type="f">aerden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die en mach doch verstrecken <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Der sielen yet van <rhyme label="b" type="f" corresp="#s4:l2">weerden</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Dus hopen <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Op t'onsienelicke <rhyme label="b" type="f" corresp="#s4:l2">expeerden</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Dat eewich <rhyme label="c" type="m" corresp="#s4:l5">zy</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">RICK, wy zijn bevonden <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Soo hope liefd' <rhyme label="b" type="f">geloove</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Ouervloedelijc <rhyme label="a" type="m" corresp="#s5:l1">eenpaer</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">By ons sy <rhyme label="b" type="f" corresp="#s5:l2">onverschooue</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Dat hopen <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Te comen de salicheyt hier <rhyme label="b" type="f" corresp="#s5:l2">boven</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Int eynde <rhyme label="c" type="m" corresp="#s5:l5">by</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">DE vreuchde die daer wesen <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En is niet om wt <rhyme label="b" type="f">spreken</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Wy werden daer genesen <rhyme label="a" type="m" corresp="#s6:l1">al</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Van elendich <rhyme label="b" type="f" corresp="#s6:l2">gebreken</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Dus hopen <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dat ons de heere hier toe <rhyme label="b" type="f" corresp="#s6:l2">werdelijcke</rhyme></l>
        <l id="s6:l7" met="2" type="-+">Sal maecken <rhyme label="c" type="m" corresp="#s6:l5">hy</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">WILDE hem elck nu voegen <rhyme label="a" type="m">pleyn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Om nae Gods woort <rhyme label="b" type="f">beginnen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Te treden, om int herte <rhyme label="a" type="m" corresp="#s7:l1">reyn</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Door nieu vereenichde <rhyme label="b" type="f" corresp="#s7:l2">sinnen</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Als (hopen) <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Te hebben tot haeren <rhyme label="b" type="f" corresp="#s7:l2">gewinne</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Ter lester <rhyme label="c" type="m" corresp="#s7:l5">ty</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">GEBO,den seden rechte <rhyme label="a" type="m">vroet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Van den heere, ten <rhyme label="b" type="f">toone</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Voor gestelt, tot ons <rhyme label="a" type="m" corresp="#s8:l1">behoet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Te houden rechte, <rhyme label="b" type="f" corresp="#s8:l2">ydoone</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Dat hopen <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Ooc daer door te erven de <rhyme label="b" type="f" corresp="#s8:l2">croone</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Vol <rhyme label="c" type="m" corresp="#s8:l5">melody</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">REN.gneren sonder <rhyme label="a" type="m">swaericheyt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">By den heere der <rhyme label="b" type="f">heeren</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Daer wy in volle <rhyme label="a" type="m" corresp="#s9:l1">claericheyt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Hem sullen sien val <rhyme label="b" type="f" corresp="#s9:l2">eeren</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Dat hopen <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Ist dat wy niet van zijn leere <rhyme label="b" type="f" corresp="#s9:l2">ceere</rhyme>,</l>
        <l id="s9:l7" met="2" type="-+">Om zijn <rhyme label="c" type="m" corresp="#s9:l5">perty</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">TOT den heere broeders <rhyme label="a" type="m">deuijn</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">BOven al t'betrouwen <rhyme label="b" type="f">stellen</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Crachtich laet ons, dat hy beloft <rhyme label="a" type="m" corresp="#s10:l1">fijn</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">HoLT. Hy sonder <rhyme label="b" type="f" corresp="#s10:l2">heele</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Dus hopen <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Hier naer by hem te zijn sonder <rhyme label="b" type="f" corresp="#s10:l2">veruele</rhyme>,</l>
        <l id="s10:l7" met="2" type="-+">In <rhyme label="c" type="m" corresp="#s10:l5">heerschapey</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
