    <melody>O kerstnacht schoner dan de dagen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAt meught ghy dert’le <rhyme label="a" type="f">Jonghelinghen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van Faëton en Orpheus <rhyme label="a" type="f" corresp="#s1:l1">singhen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En Poliphemus aen de <rhyme label="b" type="m">strandt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Van Daphne die Phoebus nae <rhyme label="c" type="f">jaeghden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Verandert in een Boom, en <rhyme label="c" type="f" corresp="#s1:l4">klaeghden</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Van Apols geyle <rhyme label="b" type="m" corresp="#s1:l3">Minne-brandt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dit zijn al Fabelrijcke <rhyme label="a" type="f">droomen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die van de Heydens zijn <rhyme label="a" type="f" corresp="#s2:l1">ghekomen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Denckt dat u noodigh is een <rhyme label="b" type="m">dingh</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Wilt ghy in Godt u hart <rhyme label="c" type="f">verlichten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Singht of leest stichtelijcke <rhyme label="c" type="f" corresp="#s2:l4">Dichten</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Al van Loths Wijfs <rhyme label="b" type="m" corresp="#s2:l3">veranderingh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Singht hoe uyt Sodom’ geleydt <rhyme label="a" type="f">wieren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Loth, Vrouw, en twee Dochters, haer <rhyme label="a" type="f" corresp="#s3:l1">vieren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En hoe haer d’Heer verboden <rhyme label="b" type="m">hadt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Niet om te kijcken, maer al <rhyme label="c" type="f">gaende</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Bleef Loths Wijf in een Zout-steen <rhyme label="c" type="f" corresp="#s3:l4">staende</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dees vr’anderingh mensch gedenckt <rhyme label="b" type="m" corresp="#s3:l3">dat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Leert hier uyt Gods gebodt om <rhyme label="a" type="f">t’houwen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Oock nae te komen, en te <rhyme label="a" type="f" corresp="#s4:l1">schouwen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Al ‘t gheen de arme ziele <rhyme label="b" type="m">schaedt</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Wilt nae ‘t vergancklijck niet om <rhyme label="c" type="f">kijcken</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Wilt ghy behouden en <rhyme label="c" type="f" corresp="#s4:l4">verrijcken</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Elck siet wel toe dat hy vast <rhyme label="b" type="m" corresp="#s4:l3">staet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wilt u aen ‘t Aerdtsch so niet <rhyme label="a" type="f">vergapen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ghy die roemt te zijn Christi <rhyme label="a" type="f" corresp="#s5:l1">Schapen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Kijckt niet te rugh, als Loths Vrouw <rhyme label="b" type="m">dee</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Laet u de wereldt niet <rhyme label="c" type="f">verleyden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Maer wilt uyt ‘t zondigh Sodom’ <rhyme label="c" type="f" corresp="#s5:l4">scheyden</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En gaet recht deur nae <rhyme label="b" type="m" corresp="#s5:l3">Ninive</rhyme>.</l>
      </lg>
    </lg>
  </text>
