  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Iesus riep tot hem de <rhyme label="a" type="m">Schaer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Met sijn Discipulen te <rhyme label="b" type="f">samen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En seyde tot die <rhyme label="a" type="m" corresp="#s1:l1">allegaer</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die welke vlijtigh tot hem <rhyme label="b" type="f" corresp="#s1:l2">quamen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo iemandt mijn wil volgen <rhyme label="a" type="m">naer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die moet sijn eygen selfs <rhyme label="b" type="f">versmaden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En alle daegh sijn Kruysse <rhyme label="a" type="m" corresp="#s2:l1">swaer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Op-neemen, en gaen mijne <rhyme label="b" type="f" corresp="#s2:l2">paden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want hy sijn siel hier na <rhyme label="a" type="m">verliest</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die welke dien hier soekt te <rhyme label="b" type="f">sparen</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Maer wie dien om mijns wille <rhyme label="a" type="m" corresp="#s3:l1">kiest</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Te quijten, die sal hem <rhyme label="b" type="f" corresp="#s3:l2">bewaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Of iemant won' de Wereldt <rhyme label="a" type="m">wijt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Wat of hem dat sou mogen <rhyme label="b" type="f">baten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wanneer hy sijne siel raekt <rhyme label="a" type="m" corresp="#s4:l1">quijt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Wat pandt sal hy daer togh voor <rhyme label="b" type="f" corresp="#s4:l2">laten</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die schaemt hem by de <rhyme label="a" type="m">Sondaren</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Van mijn, of van mijn woorden <rhyme label="b" type="f">t'samen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Diens sal ik by de <rhyme label="a" type="m" corresp="#s5:l1">Engelen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En by mijns Hemels Vader <rhyme label="b" type="f" corresp="#s5:l2">schamen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Des menschen Soon nogh koomen <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Hem in sijns Vaders gloori <rhyme label="b" type="f">toonen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Met sijne Heyligh Engels <rhyme label="a" type="m" corresp="#s6:l1">al</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Een yder na sijn werken <rhyme label="b" type="f" corresp="#s6:l2">loonen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Voorwaer, daer staen 'er hier nogh <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dewelke niet en sullen <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Voor dat sy 's menschen Soone <rhyme label="a" type="m" corresp="#s7:l1">bly</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Nogh sien sijn Godtlijk Rijk <rhyme label="b" type="f" corresp="#s7:l2">be-erven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O Heer, terwijl wy <rhyme label="a" type="m">al-gelijk</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Met u ons Kruysse moeten <rhyme label="b" type="f">dragen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En u soo volgen na u <rhyme label="a" type="m" corresp="#s8:l1">Rijk</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Geeft ons daer toe ook <rhyme label="b" type="f" corresp="#s8:l2">wel-behagen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
