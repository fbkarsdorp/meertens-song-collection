  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">STrate-slijpers, leeghe <rhyme label="a" type="f">Sinnen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Leegh van 'tgunje moet <rhyme label="a" type="f" corresp="#s1:l1">beminnen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Leegh van goed, en vol van <rhyme label="b" type="m">quaet</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Wilje wesen <rhyme label="c" type="f">onderwesen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Sinne-sloven, <rhyme label="c" type="f" corresp="#s1:l4">hande-pesen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Is den alderbesten <rhyme label="b" type="m" corresp="#s1:l3">raedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ledigh zijn kan veel <rhyme label="a" type="f">betrachten</rhyme></l>
        <l id="s2:l2" met="4" type="+-">In de sinnen, en <rhyme label="a" type="f" corresp="#s2:l1">ghedachten</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Maer te veel verslapt de <rhyme label="b" type="m">gheest</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Met de leden vaeck te <rhyme label="c" type="f">woelen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Dat se 't lamme zweeten <rhyme label="c" type="f" corresp="#s2:l4">voelen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat is goedt die 't niet en <rhyme label="b" type="m" corresp="#s2:l3">vreest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Matigheydt in alle <rhyme label="a" type="f">dinghen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Kan een dapper voordeel <rhyme label="a" type="f" corresp="#s3:l1">bringhen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Somtijts ledigh somtijts <rhyme label="b" type="m">kloeck</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Somtijts met de handt aen 't <rhyme label="c" type="f">eene</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Somtijts met de le'en aen 't <rhyme label="c" type="f" corresp="#s3:l4">ghene</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Somtijts mette Neus in't <rhyme label="b" type="m" corresp="#s3:l3">Boeck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maer 'et ledigh <rhyme label="a" type="f">lanterfanten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Om en wederom te <rhyme label="a" type="f" corresp="#s4:l1">tranten</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dat en deught sen leven <rhyme label="b" type="m">niet</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Niemandt zy hier toe <rhyme label="c" type="f">genegen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Om gheduerich dit te <rhyme label="c" type="f" corresp="#s4:l4">plegen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Die niet geeren Leuyaerdt <rhyme label="b" type="m" corresp="#s4:l3">hiet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
