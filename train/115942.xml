    <melody>Schoonste nimf van het woud</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ACh hoe zit ik hier <rhyme label="a" type="m">alleen</rhyme>!</l>
        <l id="s1:l2" met="2" type="+-">
          <rhyme label="a" type="m" corresp="#s1:l1">Af-gesne'en</rhyme>
        </l>
        <l id="s1:l3" met="4" type="+-">En van vromen en van <rhyme label="b" type="f">vrinden</rhyme>!</l>
        <l id="s1:l4" met="4" type="+-">'k Zit by naa als in een <rhyme label="c" type="m">kluis</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">In mijn <rhyme label="c" type="m" corresp="#s1:l4">huis</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Zonder eenig Mensch te <rhyme label="b" type="f" corresp="#s1:l3">vinden</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Treur niet dat-je zijt <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Neen! o <rhyme label="a" type="m" corresp="#s2:l1">neen</rhyme>!</l>
        <l id="s2:l3" met="4" type="+-">Misje vroomen, misje <rhyme label="b" type="f">vrinden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Misje in het schepzel <rhyme label="c" type="m">wat</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Ai! leer <rhyme label="c" type="m" corresp="#s2:l4">dat</rhyme></l>
        <l id="s2:l6" met="4" type="+-">In den Schepper meer te <rhyme label="b" type="f" corresp="#s2:l3">vinden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">God die scheid u van den <rhyme label="a" type="m">Mensch</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Teegens <rhyme label="a" type="m" corresp="#s3:l1">wensch</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Maar het is op dat naa <rhyme label="b" type="f">deezen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Als g' het schepzel niet en <rhyme label="c" type="m">ziet</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Nog <rhyme label="c" type="m" corresp="#s3:l4">geniet</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Tragten zoud by God te <rhyme label="b" type="f" corresp="#s3:l3">weezen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Nimmer is de Mensche <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s4:l2" met="2" type="+-">By den <rhyme label="a" type="m" corresp="#s4:l1">Heer</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Als wanneer hy word <rhyme label="b" type="f">gevonden</rhyme></l>
        <l id="s4:l4" met="4" type="+-">In een stille <rhyme label="c" type="m">eenzaamheid</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Daar in <rhyme label="c" type="m" corresp="#s4:l4">leid</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Zeer veel zoetheid <rhyme label="b" type="f" corresp="#s4:l3">op-gewonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als ik dit eens <rhyme label="a" type="m">over-leg</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Weg! weg! <rhyme label="a" type="m" corresp="#s5:l1">weg</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Met het schepzel klein van <rhyme label="b" type="f">waarde</rhyme>!</l>
        <l id="s5:l4" met="4" type="+-">Als ik naa by Bod mag <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Dat is <rhyme label="c" type="m" corresp="#s5:l4">mijn</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Hier een Heemel op der <rhyme label="b" type="f" corresp="#s5:l3">aarde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Neen, ik ben niet meer zoo <rhyme label="a" type="m">bot</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Dwaaz en <rhyme label="a" type="m" corresp="#s6:l1">zot</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">'k Treur niet, ik ben a'ers <rhyme label="b" type="f">beraaden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Schoon ik 't aardz gezelschap <rhyme label="c" type="m">mis</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Neen <rhyme label="c" type="m" corresp="#s6:l4">gewis</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Die God we'er krijgt lijd geen <rhyme label="b" type="f" corresp="#s6:l3">schaade</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'k Weet dat God, mijn eenig <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Hem we'er <rhyme label="a" type="m" corresp="#s7:l1">zal</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Stellen in der Menschen <rhyme label="b" type="f">steede</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Door hem zelve 't we'er <rhyme label="c" type="m">vergo'en</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Aan my <rhyme label="c" type="m" corresp="#s7:l4">doen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Dat de Menschen eer-tijds <rhyme label="b" type="f" corresp="#s7:l3">deeden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'k Zal mijn herte, dat wel <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s8:l2" met="2" type="+-">Al te <rhyme label="a" type="m" corresp="#s8:l1">zeer</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Naa 't gezelschap plagt te <rhyme label="b" type="f">haaken</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Geeven een verbeet're <rhyme label="c" type="m">stee</rhyme>;</l>
        <l id="s8:l5" met="2" type="+-">'k Zal daar <rhyme label="c" type="m" corresp="#s8:l4">me'e</rhyme></l>
        <l id="s8:l6" met="4" type="+-">By God tragten ge <rhyme label="b" type="f" corresp="#s8:l3">geraaken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Beeter is het <rhyme label="a" type="m">immer-meer</rhyme></l>
        <l id="s9:l2" met="2" type="+-">Met den <rhyme label="a" type="m" corresp="#s9:l1">Heer</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Dan met Menschen te <rhyme label="b" type="f">verkeeren</rhyme>;</l>
        <l id="s9:l4" met="4" type="+-">Wie God heeft tot zijn <rhyme label="c" type="m">gezel</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Kan dan <rhyme label="c" type="m" corresp="#s9:l4">wel</rhyme></l>
        <l id="s9:l6" met="4" type="+-">'t Aards gezelschap hier <rhyme label="b" type="f" corresp="#s9:l3">ontbeeren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Waar ik zit, of waar ik <rhyme label="a" type="m">ga</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Waar ik <rhyme label="a" type="m" corresp="#s10:l1">staa</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">'k Stel den Heere my te <rhyme label="b" type="f">vooren</rhyme>;</l>
        <l id="s10:l4" met="4" type="+-">Als my ook geen oog en <rhyme label="c" type="m">ziet</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-">Niemand <rhyme label="c" type="m" corresp="#s10:l4">niet</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">'k Denk Gy kond my zien en <rhyme label="b" type="f" corresp="#s10:l3">hooren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Nimmer ben ik zoo <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">Of 'k vind <rhyme label="a" type="m" corresp="#s11:l1">een</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Die mijn ziele kan <rhyme label="b" type="f">vermaaken</rhyme>;</l>
        <l id="s11:l4" met="4" type="+-">Als mijn God en ik <rhyme label="c" type="m">alleen</rhyme>,</l>
        <l id="s11:l5" met="2" type="+-">Anders <rhyme label="c" type="m" corresp="#s11:l4">geen</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Hand'len moogen onze <rhyme label="b" type="f" corresp="#s11:l3">zaaken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Zaalig is die Mensch, <rhyme label="a" type="m">voor-waar</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">Voor en <rhyme label="a" type="m" corresp="#s12:l1">naar</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Die in zijn eenzaame <rhyme label="b" type="f">stonden</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Als hy vroome Vrinden <rhyme label="c" type="m">goed</rhyme></l>
        <l id="s12:l5" met="2" type="+-">Miszen <rhyme label="c" type="m" corresp="#s12:l4">moet</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Dan naa by God word <rhyme label="b" type="f" corresp="#s12:l3">gevonden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
