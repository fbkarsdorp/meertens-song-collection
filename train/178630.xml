  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DOe my, ô Heer, toch <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Want ik, als uwe <rhyme label="a" type="m" corresp="#s1:l1">knecht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Stel gansch oprecht myn' wandel <rhyme label="b" type="m">aan</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">En ik betrouw den <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dies zal ik, Godt ter <rhyme label="c" type="f" corresp="#s1:l4">eere</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Niet wankelen noch ooit <rhyme label="b" type="m" corresp="#s1:l3">vergaan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Proef my, doorzoek my, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Naar uwe wet en <rhyme label="a" type="m" corresp="#s2:l1">leer</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Toets my, doorgrondt myn <rhyme label="b" type="m">ingewandt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Myn nieren en <rhyme label="c" type="f">gedachten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die in myn ziel <rhyme label="c" type="f" corresp="#s2:l4">vernachten</rhyme>;</l>
        <l id="s2:l6" met="4" type="-+">Myn harte, of 't niet van liefde <rhyme label="b" type="m" corresp="#s2:l3">brandt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Want uw <rhyme label="a" type="m">goetdadigheit</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En groote <rhyme label="a" type="m" corresp="#s3:l1">Majesteit</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Staan my gedurig voor 't <rhyme label="b" type="m">gezicht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Als 't voedzel van myn <rhyme label="c" type="f">oogen</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">'k Haate allen schyn en <rhyme label="c" type="f" corresp="#s3:l4">logen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En wandele in uw <rhyme label="b" type="m" corresp="#s3:l3">waarheitslicht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'k Zit niet by valsche <rhyme label="a" type="m">liên</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Maar zoek hen steeds <rhyme label="a" type="m" corresp="#s4:l1">t'ontvliên</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Die leugens dichten en <rhyme label="b" type="m">bedrog</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Men ziet my niet <rhyme label="c" type="f">verkeeren</rhyme></l>
        <l id="s4:l5" met="3" type="-+">By hen die yder <rhyme label="c" type="f" corresp="#s4:l4">deeren</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Met hunne tong en <rhyme label="b" type="m" corresp="#s4:l3">lasterspog</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ik haat der boozen <rhyme label="a" type="m">kring</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En hun <rhyme label="a" type="m" corresp="#s5:l1">vergadering</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daar niet dan valsheit wordt <rhyme label="b" type="m">gesmeedt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'k Zit by geen <rhyme label="c" type="f">goddeloozen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En heb nooit plaats <rhyme label="c" type="f" corresp="#s5:l4">gekozen</rhyme></l>
        <l id="s5:l6" met="4" type="-+">By schenders van hun woordt en <rhyme label="b" type="m" corresp="#s5:l3">eedt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ik wasch myn handen, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">In onschult, en ik <rhyme label="a" type="m" corresp="#s6:l1">keer</rhyme></l>
        <l id="s6:l3" met="4" type="-+">My naar uw huis en <rhyme label="b" type="m">heiligdom</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">'k Zie daar uw outer <rhyme label="c" type="f">branden</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Met heilige <rhyme label="c" type="f" corresp="#s6:l4">offerhanden</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En ga gereinigt daar <rhyme label="b" type="m" corresp="#s6:l3">rontom</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Opdat ik uwen <rhyme label="a" type="m">lof</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Oneindig groot van <rhyme label="a" type="m" corresp="#s7:l1">stof</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Verbreide met myn stem en <rhyme label="b" type="m">zang</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Dat ik uw <rhyme label="c" type="f">wonderwercken</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Door niemant te <rhyme label="c" type="f" corresp="#s7:l4">beperken</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Vertelle en roem myn leven <rhyme label="b" type="m" corresp="#s7:l3">lang</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ik hebbe lief, ô <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">De woning uwer <rhyme label="a" type="m" corresp="#s8:l1">eer</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">'t Huis van uw' naam en <rhyme label="b" type="m">Majesteit</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">De plaats des <rhyme label="c" type="f">Tabernakels</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Gehecht door vaste <rhyme label="c" type="f" corresp="#s8:l4">schakels</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Die gy hebt voor uwe eer <rhyme label="b" type="m" corresp="#s8:l3">bereidt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Raap myne ziel niet <rhyme label="a" type="m">wech</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Daar 'k voor u <rhyme label="a" type="m" corresp="#s9:l1">nederleg</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Met hen die snoode zondaars <rhyme label="b" type="m">zyn</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">Myn leven met de <rhyme label="c" type="f">mannen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Door bloetdorst <rhyme label="c" type="f" corresp="#s9:l4">aartstyrannen</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Die 't quaat bedekken met een' <rhyme label="b" type="m" corresp="#s9:l3">schyn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wier handen zyn <rhyme label="a" type="m">besmet</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Met schennis; die uw <rhyme label="a" type="m" corresp="#s10:l1">wet</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Versmaaden, en wier rechte <rhyme label="b" type="m">handt</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Vervult is met <rhyme label="c" type="f">geschenken</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Om 't heilig recht te <rhyme label="c" type="f" corresp="#s10:l4">krenken</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Dat zy vertreên door 't gansche <rhyme label="b" type="m" corresp="#s10:l3">landt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Maar ik ben, Heer, <rhyme label="a" type="m">oprecht</rhyme></l>
        <l id="s11:l2" met="3" type="-+">In wandel, als uw <rhyme label="a" type="m" corresp="#s11:l1">knecht</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En zoeke u in <rhyme label="b" type="m">oprechtigheit</rhyme>;</l>
        <l id="s11:l4" met="3" type="-+">Zyt my dan nu <rhyme label="c" type="f">genadig</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">En redt my, als <rhyme label="c" type="f" corresp="#s11:l4">weldadig</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">En die my hebt uw gunst <rhyme label="b" type="m" corresp="#s11:l3">bereidt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Ik voel myn voeten <rhyme label="a" type="m">staan</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Op een geslechte <rhyme label="a" type="m" corresp="#s12:l1">baan</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Gansch effen; dies zal ik den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">In zyn <rhyme label="c" type="f">vergaderingen</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Vereeren met myn <rhyme label="c" type="f" corresp="#s12:l4">zingen</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">En looven, tot zyn' roem en <rhyme label="b" type="m" corresp="#s12:l3">eer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
