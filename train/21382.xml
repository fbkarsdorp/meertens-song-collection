<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21382</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>De lustelijke mei is nu in de tijd</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Myn lieue suster in den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Een liet moet ick v <rhyme label="b" type="f">schencken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Begonnen wt liefden na v <rhyme label="a" type="m" corresp="#s1:l1">begeer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Laet ons altoos <rhyme label="b" type="f" corresp="#s1:l2">ghedencken</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Onsen roep en verkiesinghe <rhyme label="c" type="m">fijn</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Vast maecken die op dit <rhyme label="c" type="m" corresp="#s1:l5">termijn</rhyme></l>
        <l id="s1:l7" met="3" type="-+">So en sullen wy niet <rhyme label="d" type="f">vallen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">O Heer bewaert ons <rhyme label="d" type="f" corresp="#s1:l7">allen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Doen wy daer toe meer <rhyme label="a" type="m">neersticheyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">So Petrus heeft <rhyme label="b" type="f">gheschreuen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">So sal ons den inganck worden <rhyme label="a" type="m" corresp="#s2:l1">bereyt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Al tot den eewighe <rhyme label="b" type="f" corresp="#s2:l2">leuen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Wie dat nae den vleesche <rhyme label="c" type="m">leeft</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Die moet steruen siet dit <rhyme label="c" type="m" corresp="#s2:l5">heeft</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Groot onderscheyt wilt <rhyme label="d" type="f">achten</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Strijt vroom dach ende <rhyme label="d" type="f" corresp="#s2:l7">nachten</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die int vleesch lijdt weet dit <rhyme label="a" type="m">gewis</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Siet die hout op van <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Want datter achter ghebleuen <rhyme label="a" type="m" corresp="#s3:l1">is</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Int vleesch tot deser <rhyme label="b" type="f" corresp="#s3:l2">stonden</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Niet en leeft na vleesch en <rhyme label="c" type="m">bloet</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Maer nae godes wille <rhyme label="c" type="m" corresp="#s3:l5">goet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Wie so lijt mannen of <rhyme label="d" type="f">vrouwen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Die moghen tvelt <rhyme label="d" type="f" corresp="#s3:l7">behouwen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dit lijden wort van veel <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Op sieckten dat zijt <rhyme label="b" type="f">beduyden</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Dat en was niet des Apostels <rhyme label="a" type="m" corresp="#s4:l1">vermaen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hy sprack van sulcke <rhyme label="b" type="f" corresp="#s4:l2">luyden</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Siet die hier cruyssen haren <rhyme label="c" type="m">vleesch</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Met lusten en begheerten een <rhyme label="c" type="m" corresp="#s4:l5">reys</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Om alle quaet te <rhyme label="d" type="f">mijden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Die heeft int vleesch veel <rhyme label="d" type="f" corresp="#s4:l7">lijden</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die eene meer dan dander <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Al zijn wy van <rhyme label="b" type="f">natueren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Bedoruen door Adam <rhyme label="a" type="m" corresp="#s5:l1">allegaer</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Veel schelen die <rhyme label="b" type="f" corresp="#s5:l2">creatueren</rhyme></l>
        <l id="s5:l5" met="4" type="-+">So waer den strijt is <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Eenen hulper in der <rhyme label="c" type="m" corresp="#s5:l5">noot</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Is Godt wilt Dauid <rhyme label="d" type="f">hooren</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Hy helpt zijn <rhyme label="d" type="f" corresp="#s5:l7">wtuercoren</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Veel lijden die oprechtigen <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die werelt toont ient en <rhyme label="b" type="f">aerdich</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Godt proeft haer ooc als gout int <rhyme label="a" type="m" corresp="#s6:l1">vier</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Och suster hy vantse hem <rhyme label="b" type="f" corresp="#s6:l2">waerdich</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Wie hier nu vroom <rhyme label="c" type="m">volhert</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Voor Godt waerdich gheuonden <rhyme label="c" type="m" corresp="#s6:l5">wert</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Die sal die croon <rhyme label="d" type="f">ontfanghen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Strijt vroom met dit <rhyme label="d" type="f" corresp="#s6:l7">verlanghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Al die daer na Gods wille <rhyme label="a" type="m">lijt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Beuelen haer sielen wilt <rhyme label="b" type="f">mercken</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Den Schepper Godt <rhyme label="a" type="m" corresp="#s7:l1">ghebenedijt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En dat met goede <rhyme label="b" type="f" corresp="#s7:l2">wercken</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Stelt v so in Godes <rhyme label="c" type="m">hant</rhyme></l>
        <l id="s7:l6" met="4" type="-+">En weest vast in v <rhyme label="c" type="m" corresp="#s7:l5">verstant</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Beueelt den Heer v <rhyme label="d" type="f">saecken</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Betrout hy salt wel <rhyme label="d" type="f" corresp="#s7:l7">maecken</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dat wy toch enden een goeden <rhyme label="a" type="m">loop</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Een licht zijn alle <rhyme label="b" type="f">scharen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Ja stilheyt is der vrouwen <rhyme label="a" type="m" corresp="#s8:l1">roop</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Haer huys wel te <rhyme label="b" type="f" corresp="#s8:l2">bewaren</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Haer comt oock toe <rhyme label="c" type="m">cierheyt</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Het welcke niet en <rhyme label="c" type="m" corresp="#s8:l5">leyt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">In siluer noch gout of <rhyme label="d" type="f">cleeren</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Dan in ootmoedicheyt <rhyme label="d" type="f" corresp="#s8:l7">verneren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">In eenen sachten stillen <rhyme label="a" type="m">gheest</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Die daer is <rhyme label="b" type="f">costelijcken</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Voor godt och suster so men <rhyme label="a" type="m" corresp="#s9:l1">leest</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Dat wy toch hier gaen <rhyme label="b" type="f" corresp="#s9:l2">strijcken</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Met die in stilheyt <rhyme label="c" type="m">voort</rhyme></l>
        <l id="s9:l6" met="4" type="-+">So ons wel <rhyme label="c" type="m" corresp="#s9:l5">toebehoort</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Ick tel my met v <rhyme label="d" type="f">leden</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Heer waer is mijn vruecht <rhyme label="d" type="f" corresp="#s9:l7">heden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hier mede groet ick suster <rhyme label="a" type="m">v</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Elck neemt zijn roep voor <rhyme label="b" type="f">ooghen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Wilt hertich voor my bidden <rhyme label="a" type="m" corresp="#s10:l1">nu</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Want wy niet en <rhyme label="b" type="f" corresp="#s10:l2">vermoghen</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Al sonder Godt merckt <rhyme label="c" type="m">wel</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Laet ons vromelijck strijden <rhyme label="c" type="m" corresp="#s10:l5">snel</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Altoos met geestelijck <rhyme label="d" type="f">wapen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Blijft vroom met Christus <rhyme label="d" type="f" corresp="#s10:l7">schapen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
