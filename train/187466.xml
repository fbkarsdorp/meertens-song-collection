  <author>Johannes Wilhelmus Bussingh</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">U, Vader! zingt mijn hart ter <rhyme label="a" type="m">eer'</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gij hebt Uw' Zoon <rhyme label="b" type="f">gegeven</rhyme>: -</l>
        <l id="s1:l3" met="4" type="-+">Die Zoon bracht heil aen Zondaers <rhyme label="a" type="m" corresp="#s1:l1">weêr</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En 't onverganklijk <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme>. -</l>
        <l id="s1:l5" met="4" type="-+">Ja, dank! - Den Geest van Uwen <rhyme label="c" type="m">Zoon</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">ô Vader! hebt Gij, van Uw' <rhyme label="c" type="m" corresp="#s1:l5">troon</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Op aerde <rhyme label="d" type="f">neêrgezonden</rhyme>: -</l>
        <l id="s1:l8" met="4" type="-+">Uw Knechten juichen, blij te <rhyme label="e" type="m">moê</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Dien Geest der Waerheid welkom <rhyme label="e" type="m" corresp="#s1:l8">toe</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Uw woord is waer <rhyme label="d" type="f" corresp="#s1:l7">bevonden</rhyme>. -</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Apostelschaer, verëend van <rhyme label="a" type="m">Geest</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Door Broedertrouw <rhyme label="b" type="f">verbonden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Wordt, op dit groot, doorluchtig <rhyme label="a" type="m" corresp="#s2:l1">Feest</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Godsdienstig <rhyme label="b" type="f" corresp="#s2:l2">zaemgevonden</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Daer komt, op 't plechtig <rhyme label="c" type="m">offerüur</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">De Heil'ge Geest, in storm en <rhyme label="c" type="m" corresp="#s2:l5">vuur</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En leert hen vreemde <rhyme label="d" type="f">talen</rhyme>;</l>
        <l id="s2:l8" met="4" type="-+">Deeldt hen de wondergaven <rhyme label="e" type="m">meê</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">En leert de maer' van heil en <rhyme label="e" type="m" corresp="#s2:l8">vreê</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Aen 't weereldrond <rhyme label="d" type="f" corresp="#s2:l7">verhalen</rhyme>. -</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vervuld met jesus <rhyme label="a" type="m">wonderkracht</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Gaen zij de weereld <rhyme label="b" type="f">leren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En ieder Natie, elk <rhyme label="a" type="m" corresp="#s3:l1">Geslacht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Door 's Geestes kracht, <rhyme label="b" type="f" corresp="#s3:l2">bekeeren</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">De blijmaer' der <rhyme label="c" type="m">genadeleer</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Vervult het aerdrijk, heinde en <rhyme label="c" type="m" corresp="#s3:l5">veer</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">De waerheid wordt <rhyme label="d" type="f">verheven</rhyme>:</l>
        <l id="s3:l8" met="4" type="-+">De blindheid en de laster <rhyme label="e" type="m">vliedt</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">En, waer men 's Almachts vinger <rhyme label="e" type="m" corresp="#s3:l8">ziet</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Daer ziet men Satan <rhyme label="d" type="f" corresp="#s3:l7">beven</rhyme>. -</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Vergeefsch nog biedt hij <rhyme label="a" type="m">tegenweer</rhyme>: -</l>
        <l id="s4:l2" met="3" type="-+">Hij moog' met woede <rhyme label="b" type="f">twisten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Vergeefsch! - Mijn jesus, U zij de <rhyme label="a" type="m" corresp="#s4:l1">eer</rhyme>! -</l>
        <l id="s4:l4" met="3" type="-+">Nu zegeviert de <rhyme label="b" type="f" corresp="#s4:l2">Christen</rhyme>. -</l>
        <l id="s4:l5" met="4" type="-+">De Geest der sterkte geeft hem <rhyme label="c" type="m">kracht</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Zoo wordt zijn strijd met roem <rhyme label="c" type="m" corresp="#s4:l5">volbracht</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Hij beeft niet in <rhyme label="d" type="f">gevaren</rhyme>:</l>
        <l id="s4:l8" met="4" type="-+">'t Geloof, dat van geen wank'len <rhyme label="e" type="m">weet</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Wacht vrolijk, trouw aen plicht en <rhyme label="e" type="m" corresp="#s4:l8">eed</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">De kroon der <rhyme label="d" type="f" corresp="#s4:l7">Martelaren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ja, Heil'ge Geest! door Uwen <rhyme label="a" type="m">arm</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Is 't Christendom <rhyme label="b" type="f">beveiligd</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Verstorven' harten maekt Gij <rhyme label="a" type="m" corresp="#s5:l1">warm</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gij leidt, Gij troost, Gij <rhyme label="b" type="f" corresp="#s5:l2">heiligt</rhyme>. -</l>
        <l id="s5:l5" met="4" type="-+">Millioenen menschen zijn <rhyme label="c" type="m">bekeerd</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Zij laten zich, verlicht, <rhyme label="c" type="m" corresp="#s5:l5">geleerd</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Door jesus hand <rhyme label="d" type="f">regeren</rhyme>;</l>
        <l id="s5:l8" met="4" type="-+">Haest is de bange nacht <rhyme label="e" type="m">voorbij</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Uw Kerk, hoe aek'lig duister 't <rhyme label="e" type="m" corresp="#s5:l8">zij</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Zal vrolijk <rhyme label="d" type="f" corresp="#s5:l7">triömferen</rhyme>. -</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nog stroomt een rijkdom van <rhyme label="a" type="m">genaê</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Door U het menschdom <rhyme label="b" type="f">tegen</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Tot op dit oogenblik, ô <rhyme label="a" type="m" corresp="#s6:l1">ja</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Proeft onze ziel Uw' <rhyme label="b" type="f" corresp="#s6:l2">zegen</rhyme>: -</l>
        <l id="s6:l5" met="4" type="-+">In zondaers werkt Gij lust tot <rhyme label="c" type="m">deugd</rhyme>;</l>
        <l id="s6:l6" met="4" type="-+">In vrome harten troost en <rhyme label="c" type="m" corresp="#s6:l5">vreugd</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En moed, en kracht, in 't <rhyme label="d" type="f">lijden</rhyme>: -</l>
        <l id="s6:l8" met="4" type="-+">'k Vrees Weereld, Zonde, Dood noch <rhyme label="e" type="m">Hel</rhyme>;</l>
        <l id="s6:l9" met="4" type="-+">ô Geest van Vorst <rhyme label="e" type="m" corresp="#s6:l8">Emanuël</rhyme>!</l>
        <l id="s6:l10" met="3" type="-+">'k Verwin door U in 't <rhyme label="d" type="f" corresp="#s6:l7">strijden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ja, Geest van Vader en van <rhyme label="a" type="m">Zoon</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">Gij, bron van vreugd en <rhyme label="b" type="f">vrede</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dael ook op mij van Uwen <rhyme label="a" type="m" corresp="#s7:l1">troon</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Deel mij Uw gaven <rhyme label="b" type="f" corresp="#s7:l2">mede</rhyme>! -</l>
        <l id="s7:l5" met="4" type="-+">Gij, jesus! wiens <rhyme label="c" type="m">beloftenis</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Voor eeuwig waer en zeker <rhyme label="c" type="m" corresp="#s7:l5">is</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Wil Gij dien Geest mij <rhyme label="d" type="f">geven</rhyme>: -</l>
        <l id="s7:l8" met="4" type="-+">Hij reinige en vernieuw' mijn <rhyme label="e" type="m">hart</rhyme>,</l>
        <l id="s7:l9" met="4" type="-+">Werk' waer berouw en <rhyme label="e" type="m" corresp="#s7:l8">zonden-smart</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">En zij mijn ziel ten <rhyme label="d" type="f" corresp="#s7:l7">leven</rhyme>. -</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">ô Geest! Dael rijklijk op mij <rhyme label="a" type="m">neêr</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Op dezen dag der <rhyme label="b" type="f">dagen</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Keert dan eens jesus tot ons <rhyme label="a" type="m" corresp="#s8:l1">weêr</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Op Zijne <rhyme label="b" type="f" corresp="#s8:l2">gloriewagen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Door 't heir der Eng'len <rhyme label="c" type="m">begeleid</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Als Richter, groot in <rhyme label="c" type="m" corresp="#s8:l5">Majesteit</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">'k Zal dan Zijn komst niet <rhyme label="d" type="f">vrezen</rhyme>: -</l>
        <l id="s8:l8" met="4" type="-+">ô Neen! - 'k Gevoel uw hulp. - Geen <rhyme label="e" type="m">nood</rhyme>! -</l>
        <l id="s8:l9" met="4" type="-+">Triömf! - 'k Zal, over Hel en <rhyme label="e" type="m" corresp="#s8:l8">Dood</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Door U, verwinnaer <rhyme label="d" type="f" corresp="#s8:l7">wezen</rhyme>. -</l>
      </lg>
    </lg>
  </text>
</song>
