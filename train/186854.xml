  <author>Gerrit Manheer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">De een kroond men met den naam van <rhyme label="a" type="m">Kees</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De andre heet men <rhyme label="b" type="m">Phoef</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Maar ik leef stil en buiten <rhyme label="a" type="m" corresp="#s1:l1">vrees</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En lach met al 't <rhyme label="b" type="m" corresp="#s1:l2">gesnoef</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Ik hou het met myn <rhyme label="c" type="m">maag</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Deez' dien ik alle <rhyme label="c" type="m" corresp="#s1:l5">daag</rhyme>;</l>
        <l id="s1:l7" met="4" type="-+">Maar sabels, bommen, kruit en <rhyme label="d" type="m">lood</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ontvlugt ik als de <rhyme label="d" type="m" corresp="#s1:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'k Spot met Partyschap, en all <rhyme label="a" type="m">wat</rhyme></l>
        <l id="s2:l2" met="3" type="-+">De stille rust <rhyme label="b" type="m">verstoort</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'k Leef by myn wyn en <rhyme label="a" type="m" corresp="#s2:l1">botervat</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En wat daar by <rhyme label="b" type="m" corresp="#s2:l2">behoort</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Ik kus myn malsche <rhyme label="c" type="m">Tryn</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als zy gekust wil <rhyme label="c" type="m" corresp="#s2:l5">zyn</rhyme>;</l>
        <l id="s2:l7" met="4" type="-+">Maar sabels, bommen, kruit en <rhyme label="d" type="m">lood</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ontvlugt ik als de <rhyme label="d" type="m" corresp="#s2:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'k Waar zot, begaf ik my te <rhyme label="a" type="m">veld</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Neen: aan den vollen <rhyme label="b" type="m">disch</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Daar kerf, daar steek ik als een <rhyme label="a" type="m" corresp="#s3:l1">held</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daar is de zege <rhyme label="b" type="m" corresp="#s3:l2">wis</rhyme>!</l>
        <l id="s3:l5" met="3" type="-+">'k Loop storm, met vork en <rhyme label="c" type="m">mes</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daar schiet ik bres, by <rhyme label="c" type="m" corresp="#s3:l5">bres</rhyme>;</l>
        <l id="s3:l7" met="4" type="-+">Maar sabels, bommen, kruit en <rhyme label="d" type="m">lood</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Ontvlugt ik als de <rhyme label="d" type="m" corresp="#s3:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nu vecht ik met een <rhyme label="a" type="m">Runderribb'</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vol zieu en malsch <rhyme label="b" type="m">gebraan</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dan met een Ham, Patrys of <rhyme label="a" type="m" corresp="#s4:l1">Snip</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">De Zege lacht my <rhyme label="b" type="m" corresp="#s4:l2">aan</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Ik stort geen menschen <rhyme label="c" type="m">bloed</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">Maar saus in <rhyme label="c" type="m" corresp="#s4:l5">overvloed</rhyme>;</l>
        <l id="s4:l7" met="4" type="-+">Doch sabels, bommen, kruit en <rhyme label="d" type="m">lood</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Ontvlugt ik als de <rhyme label="d" type="m" corresp="#s4:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En koomt de Frecadel te <rhyme label="a" type="m">veld</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Deez' vriend vind geen <rhyme label="b" type="m">gena</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Maar, bukt, terstond, voor myn <rhyme label="a" type="m" corresp="#s5:l1">geweld</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">'k Loop storm op hem, en <rhyme label="b" type="m" corresp="#s5:l2">slaa</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Met myn gewet <rhyme label="c" type="m">geweêr</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hem onvertzaagt ter <rhyme label="c" type="m" corresp="#s5:l5">neêr</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Maar sabels, bommen, kruit en <rhyme label="d" type="m">lood</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Ontvlugt ik als de <rhyme label="d" type="m" corresp="#s5:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Het bloed vloeit lans myn kneukels <rhyme label="a" type="m">neêr</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ik meen het smoutig <rhyme label="b" type="m">vet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wanneer ik myn gevreest <rhyme label="a" type="m" corresp="#s6:l1">geweêr</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">In varkens krappen <rhyme label="b" type="m" corresp="#s6:l2">zet</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Die gryp ik met de <rhyme label="c" type="m">hand</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Verscheur ze met de <rhyme label="c" type="m" corresp="#s6:l5">tand</rhyme>;</l>
        <l id="s6:l7" met="4" type="-+">Maar sabels, bommen, kruit en <rhyme label="d" type="m">lood</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Ontvlugt ik als de <rhyme label="d" type="m" corresp="#s6:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De volle fles is myn <rhyme label="a" type="m">mortier</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Het glas myn kleen <rhyme label="b" type="m">musket</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Het mes den sabel dien ik <rhyme label="a" type="m" corresp="#s7:l1">zwier</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">De vork myn <rhyme label="b" type="m" corresp="#s7:l2">bajonet</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Zie daar het <rhyme label="c" type="m">helden-tuig</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Waar meê 'k den vyand <rhyme label="c" type="m" corresp="#s7:l5">buig</rhyme>;</l>
        <l id="s7:l7" met="4" type="-+">Maar sabels, bommen, kruit en <rhyme label="d" type="m">lood</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Ontvlugt ik als de <rhyme label="d" type="m" corresp="#s7:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">'k Leef eens, en zou ik dan dien <rhyme label="a" type="m">tyd</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Aan poef, poef, paf <rhyme label="b" type="m">besteên</rhyme>?</l>
        <l id="s8:l3" met="4" type="-+">Myn leven wagen in den <rhyme label="a" type="m" corresp="#s8:l1">stryd</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Daar myn gezonde <rhyme label="b" type="m" corresp="#s8:l2">leên</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Doen kerven? Neen: den <rhyme label="c" type="m">disch</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Waar 't leven zeker <rhyme label="c" type="m" corresp="#s8:l5">is</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Kies ik voor sabels, kruit en <rhyme label="d" type="m">lood</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Daar ben ik buiten <rhyme label="d" type="m" corresp="#s8:l7">schoot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
