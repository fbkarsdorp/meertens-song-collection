  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">UAn lief te zyn <rhyme label="a" type="f">verscheyden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Is rechte lied' een <rhyme label="b" type="m">dood</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Al machmen troost <rhyme label="a" type="f" corresp="#s1:l1">verbeyden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Verlanghens druck valt <rhyme label="b" type="m" corresp="#s1:l2">groot</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Wat droefheyd zalt dan <rhyme label="c" type="f">wezen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Daar lief wanhopigh <rhyme label="d" type="m">derft</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Die liefste uyt <rhyme label="c" type="f" corresp="#s1:l5">ghelezen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En zonder sterven <rhyme label="d" type="m" corresp="#s1:l6">sterft</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Al sterf ick alle <rhyme label="a" type="f">vruechde</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ick sterf myn droefheyd <rhyme label="b" type="m">niet</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">t'Ghedencken van liefs <rhyme label="a" type="f" corresp="#s2:l1">duechde</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Is my een doods <rhyme label="b" type="m" corresp="#s2:l2">verdriet</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Kond ick myn hart zo <rhyme label="c" type="f">wachten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Voor tschadigh trueren <rhyme label="d" type="m">fel</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Als van des vruechds <rhyme label="c" type="f" corresp="#s2:l5">ghedachten</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">Ghe-eyndt waar myn <rhyme label="d" type="m" corresp="#s2:l6">ghequel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O wrede handen <rhyme label="a" type="f">bloedigh</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die deerlick hebt <rhyme label="b" type="m">doorboort</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Myns Bruyghoms herte <rhyme label="a" type="f" corresp="#s3:l1">ghoedigh</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En my in hem <rhyme label="b" type="m" corresp="#s3:l2">vermoort</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Moght ghy oock zo <rhyme label="c" type="f">vermoorden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Myn liefde als myn <rhyme label="d" type="m">lief</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Ick zocht v zuyd en <rhyme label="c" type="f" corresp="#s3:l5">noorden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Zulck dood waar my <rhyme label="d" type="m" corresp="#s3:l6">gherief</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maar ghy o God <rhyme label="a" type="f">allene</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vermueght dit in <rhyme label="b" type="m">waarheyd</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Die toont door pijnlick <rhyme label="a" type="f" corresp="#s4:l1">wene</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">d'Ellend en die <rhyme label="b" type="m" corresp="#s4:l2">waarheyd</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Van daartsche <rhyme label="c" type="f">Creaturen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Wanneermer t'hert <rhyme label="d" type="m">opstelt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Zo rooft ghy talder <rhyme label="c" type="f" corresp="#s4:l5">uren</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Elx afgod die hem <rhyme label="d" type="m" corresp="#s4:l6">quelt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghy hebt o Heer met <rhyme label="a" type="f">smerte</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">V zoon, myn lief <rhyme label="b" type="m">ghehaalt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Trekt oock myn liefd en <rhyme label="a" type="f" corresp="#s5:l1">herte</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Tot u, dwelk was <rhyme label="b" type="m" corresp="#s5:l2">ghedaalt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Van u op daarttsche <rhyme label="c" type="f">mensche</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Met aardsche liefd <rhyme label="d" type="m">verzot</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Wort ghy alleen myn <rhyme label="c" type="f" corresp="#s5:l5">wensche</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Myn hoop, myn troost, myn <rhyme label="d" type="m" corresp="#s5:l6">God</rhyme>.</l>
      </lg>
    </lg>
  </text>
