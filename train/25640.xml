      <category translation="formal genres">formele genres</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Grypt eenen moedt nae <rhyme label="a" type="m">t’Hemelrijck</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Mijn liefste, in u oude <rhyme label="b" type="f">daghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">V reys loopt haest ten eynd’ <rhyme label="a" type="m" corresp="#s1:l1">ghelijck</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daerom en wilt nu niet <rhyme label="b" type="f" corresp="#s1:l2">vertsaghen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Maer vernieut u in u <rhyme label="c" type="m">ghemoet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">In vreuchd’, droefheyt en <rhyme label="c" type="m" corresp="#s1:l5">teghenspoet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Om te verwerven d’eeuwich <rhyme label="c" type="m" corresp="#s1:l5">goet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Eeuwich is langh, ten neemt geen <rhyme label="a" type="m">endt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Al dinck vergaet hier int <rhyme label="b" type="f">aenschouwen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dus wilt nae’t Hemels <rhyme label="a" type="m" corresp="#s2:l1">regiment</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Arbeyden met een vast <rhyme label="b" type="f" corresp="#s2:l2">betrouwen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dat ghy nu voortaen uwen <rhyme label="c" type="m">tijt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">In rechter vreesen Gods <rhyme label="c" type="m" corresp="#s2:l5">verslijt</rhyme></l>
        <l id="s2:l7" met="4" type="-+">In desen corten levens <rhyme label="c" type="m" corresp="#s2:l5">strijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Tot Godt den Heer wilt keeren <rhyme label="a" type="m">net</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Met uwen sinnen en <rhyme label="b" type="f">ghedachten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Roept om sijn hulp in u <rhyme label="a" type="m" corresp="#s3:l1">ghebet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Wilt die met verlanghen <rhyme label="b" type="f" corresp="#s3:l2">verwachten</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy is een Godt die even <rhyme label="c" type="m">seer</rhyme></l>
        <l id="s3:l6" met="4" type="-+">In noot by-staet, een goedich <rhyme label="c" type="m" corresp="#s3:l5">Heer</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Verlaet de sijne <rhyme label="c" type="m" corresp="#s3:l5">nemmermeer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Gheen dinck hem meerder en <rhyme label="a" type="m">mishaeght</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dan t’betrouwen hier te <rhyme label="b" type="f">verlaten</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Op hem,  die sorght voor ons <rhyme label="a" type="m" corresp="#s4:l1">draeght</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En ons regeert in goeder <rhyme label="b" type="f" corresp="#s4:l2">maten</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Een gheweldighe groot van <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Nochtans barmhertich, hier op <rhyme label="c" type="m" corresp="#s4:l5">acht</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Gheneycht tot het Menschlijck <rhyme label="c" type="m" corresp="#s4:l5">gheslacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En hy helpt haer met sijner <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Als sy comen hier int <rhyme label="b" type="f">beswaren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Beangst, benout, int Aerdsche <rhyme label="a" type="m" corresp="#s5:l1">landt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Verlostse uyt alle <rhyme label="b" type="f" corresp="#s5:l2">ghevaren</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Dus roept hem aen van herten <rhyme label="c" type="m">gront</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Segt: Heer maeckt doch mijn ziel <rhyme label="c" type="m" corresp="#s5:l5">ghesont</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">En verlaet my tot gheener <rhyme label="c" type="m" corresp="#s5:l5">stont</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Comt helpt my doch ten eynde <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Als ghy my van mijn jonghe <rhyme label="b" type="f">daghen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Heel lieflijck hebt ghenomen <rhyme label="a" type="m" corresp="#s6:l1">aen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Ghy hebt de sorgh voor my <rhyme label="b" type="f" corresp="#s6:l2">ghedraghen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">En hebt my met der handt <rhyme label="c" type="m">gheleyt</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Naer t’Hemelrijck soo schoon <rhyme label="c" type="m" corresp="#s6:l5">voorseyt</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Begaeft my met <rhyme label="c" type="m" corresp="#s6:l5">volstandicheyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Recht mijn voeten in uwen <rhyme label="a" type="m">padt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Bewaert my boot t’hooghmoedich <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Gheeft dat ick niet en worde <rhyme label="a" type="m" corresp="#s7:l1">sadt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Maer als een lief kindt nieu <rhyme label="b" type="f" corresp="#s7:l2">verresen</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Mach hongher en dorst hebben <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Nae uwen wijn en t’Hemels <rhyme label="c" type="m" corresp="#s7:l5">broot</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Mijn ziel verquicken in der <rhyme label="c" type="m" corresp="#s7:l5">noot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Iae laet mijn hert niet zijn <rhyme label="a" type="m">beswaert</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Alhier met drincken ofte <rhyme label="b" type="f">eten</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Noch door onnutte sorgh <rhyme label="a" type="m" corresp="#s8:l1">vervaert</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Als Heydens die van Godt niet <rhyme label="b" type="f" corresp="#s8:l2">weten</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">T’is quaet in doornen baden // <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">En in distelen waden // <rhyme label="c" type="m" corresp="#s8:l5">saen</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Dus siet my met ghenaden // <rhyme label="c" type="m" corresp="#s8:l5">aen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Nacht ende dach slaet mijner <rhyme label="a" type="m">gae</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Ick beveel Heer in uwen <rhyme label="b" type="f">handen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Mijn ziel en lijf vroech ende <rhyme label="a" type="m" corresp="#s9:l1">spae</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Laet my nimmermeer gaen te <rhyme label="b" type="f" corresp="#s9:l2">schanden</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">V ooghen Heere op my <rhyme label="c" type="m">slaet</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Door u goetheyt my doch <rhyme label="c" type="m" corresp="#s9:l5">beraet</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Mijn hoep, mijn troost, mijn <rhyme label="c" type="m" corresp="#s9:l5">toeverlaet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">En op dat ick nu <rhyme label="a" type="m">onbevreest</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Mijnen loop mach te recht <rhyme label="b" type="f">voleynden</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Soo wilt my uwen goeden <rhyme label="a" type="m" corresp="#s10:l1">Gheest</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Tot eenen leydtsman, Heere, <rhyme label="b" type="f" corresp="#s10:l2">seynden</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Vwe goede Enghelsche <rhyme label="c" type="m">schaer</rhyme></l>
        <l id="s10:l6" met="4" type="-+">My doch soo alle tijdt <rhyme label="c" type="m" corresp="#s10:l5">bewaer</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Dat bid ick u mijn lieve <rhyme label="c" type="m" corresp="#s10:l5">Vaer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Nu het dan moet ghescheyden <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Vrienden soo wilt mijner <rhyme label="b" type="f">ghedincken</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Voor Godt, om van den soeten <rhyme label="a" type="m" corresp="#s11:l1">wijn</rhyme></l>
        <l id="s11:l4" met="4" type="-+">In den Hemel naemaels te <rhyme label="b" type="f" corresp="#s11:l2">drincken</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">Adieu tot op een ander <rhyme label="c" type="m">Iaer</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">En wy vergaren <rhyme label="c" type="m" corresp="#s11:l5">allegaer</rhyme></l>
        <l id="s11:l7" met="4" type="-+">Boven by die Hemelsche <rhyme label="c" type="m" corresp="#s11:l5">schaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
