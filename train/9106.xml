  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HAlf-gesleten droefheyd <rhyme label="a" type="f">stelpen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Met vertroosting in den <rhyme label="b" type="m">mond</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Met vertroosting in den <rhyme label="b" type="m" corresp="#s1:l2">mond</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Is den half-genesen <rhyme label="a" type="f" corresp="#s1:l1">helpen</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Met de nagel in de <rhyme label="b" type="m" corresp="#s1:l2">wond</rhyme>;</l>
        <l id="s1:l6" met="4" type="+-">Met de nagel in de <rhyme label="b" type="m" corresp="#s1:l2">wond</rhyme>;</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dagt ick eerst: Maar nu herhaal ick <rhyme label="a" type="f">'t</rhyme>.</l>
        <l id="s2:l2" met="4" type="+-">Daar de tijd de droefheyd <rhyme label="b" type="m">slijt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Daar de tijd de droefheyd <rhyme label="b" type="m" corresp="#s2:l2">slijt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">By die geldt dat, daar bepaal ick <rhyme label="a" type="f" corresp="#s2:l1">'t</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Daar gy, (Nigt) niet onder <rhyme label="b" type="m" corresp="#s2:l2">sijt</rhyme>.</l>
        <l id="s2:l6" met="4" type="+-">Daar gy, (Nigt) niet onder <rhyme label="b" type="m" corresp="#s2:l2">sijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">U sijn Hemel-ligte <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Reden van uw <rhyme label="b" type="m">Lijdsaamheyd</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Reden van uw <rhyme label="b" type="m" corresp="#s3:l2">Lijdsaamheyd</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">En het Herte so te <rhyme label="a" type="f" corresp="#s3:l1">vreden</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Wert dit noyt genoeg <rhyme label="b" type="m" corresp="#s3:l2">geseyt</rhyme>.</l>
        <l id="s3:l6" met="4" type="+-">Wert dit noyt genoeg <rhyme label="b" type="m" corresp="#s3:l2">geseyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Nigte, wat is sy <rhyme label="a" type="f">geluckig</rhyme>!</l>
        <l id="s4:l2" met="4" type="+-">Die de sware <rhyme label="b" type="m">Werelscheyd</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Die de sware <rhyme label="b" type="m" corresp="#s4:l2">Werelscheyd</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Altijd tranig, altijd <rhyme label="a" type="f" corresp="#s4:l1">druckig</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Eens gelijck heeft <rhyme label="b" type="m" corresp="#s4:l2">af-geleydt</rhyme>!</l>
        <l id="s4:l6" met="4" type="+-">Eens gelijck heeft <rhyme label="b" type="m" corresp="#s4:l2">af-geleydt</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Daar de vleugelen haar <rhyme label="a" type="f">droegen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Van 't gelovig <rhyme label="b" type="m">schemer-ligt</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Van 't gelovig <rhyme label="b" type="m" corresp="#s5:l2">schemer-ligt</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Draagt haar nu in vol <rhyme label="a" type="f" corresp="#s5:l1">genoegen</rhyme></l>
        <l id="s5:l5" met="4" type="+-">'t Eeuwig glorieus' <rhyme label="b" type="m" corresp="#s5:l2">gesigt</rhyme>.</l>
        <l id="s5:l6" met="4" type="+-">'t Eeuwig glorieus' <rhyme label="b" type="m" corresp="#s5:l2">gesigt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'t Soet geselschap, datse op <rhyme label="a" type="f">aarden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">In een lage hutte <rhyme label="b" type="m">sogt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">In een lage hutte <rhyme label="b" type="m" corresp="#s6:l2">sogt</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Werd haar nu in groter waard', <rhyme label="a" type="f" corresp="#s6:l1">en</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Hemel-Heerlijck <rhyme label="b" type="m" corresp="#s6:l2">toe-gebrogt</rhyme>.</l>
        <l id="s6:l6" met="4" type="+-">Hemel-Heerlijck <rhyme label="b" type="m" corresp="#s6:l2">toe-gebrogt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'t Hemelsch heyr der <rhyme label="a" type="f">Cherubijnen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Seraphijnen van om <rhyme label="b" type="m">hoog</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Seraphijnen van om <rhyme label="b" type="m" corresp="#s7:l2">hoog</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Doen haar nu den druck <rhyme label="a" type="f" corresp="#s7:l1">verdwijnen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Met haar Iesus in het <rhyme label="b" type="m" corresp="#s7:l2">oog</rhyme>.</l>
        <l id="s7:l6" met="4" type="+-">Met haar Iesus in het <rhyme label="b" type="m" corresp="#s7:l2">oog</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Siele-spijs in aarde <rhyme label="a" type="f">vaten</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Schaars in lett'ren en <rhyme label="b" type="m">francijn</rhyme>!</l>
        <l id="s8:l3" met="4" type="+-">Schaars in lett'ren en <rhyme label="b" type="m" corresp="#s8:l2">francijn</rhyme>!</l>
        <l id="s8:l4" met="4" type="+-">Daar sal 't hong'rig hert de maat, <rhyme label="a" type="f" corresp="#s8:l1">en</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Iesus self de Leraar <rhyme label="b" type="m" corresp="#s8:l2">sijn</rhyme>.</l>
        <l id="s8:l6" met="4" type="+-">Iesus self de Leraar <rhyme label="b" type="m" corresp="#s8:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Hier gehuyst, en hier so <rhyme label="a" type="f">deerlijck</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">In een pijnlijck vleesch en <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">In een pijnlijck vleesch en <rhyme label="b" type="m" corresp="#s9:l2">bloed</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Siet nu sonder vleesch, en <rhyme label="a" type="f" corresp="#s9:l1">heerlijck</rhyme></l>
        <l id="s9:l5" met="4" type="+-">'t Ongevleeschde vleesch te <rhyme label="b" type="m" corresp="#s9:l2">moet</rhyme>.</l>
        <l id="s9:l6" met="4" type="+-">'t Ongevleeschde vleesch te <rhyme label="b" type="m" corresp="#s9:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Nu haar na-gestaart na <rhyme label="a" type="f">boven</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Tot het ongemeten <rhyme label="b" type="m">Claar</rhyme>:</l>
        <l id="s10:l3" met="4" type="+-">Tot het ongemeten <rhyme label="b" type="m" corresp="#s10:l2">Claar</rhyme>:</l>
        <l id="s10:l4" met="4" type="+-">Door het ongesien <rhyme label="a" type="f" corresp="#s10:l1">Geloven</rhyme></l>
        <l id="s10:l5" met="4" type="+-">Ongesien en <rhyme label="b" type="m" corresp="#s10:l2">onsigtbar</rhyme>.</l>
        <l id="s10:l6" met="4" type="+-">Ongesien en <rhyme label="b" type="m" corresp="#s10:l2">onsigtbar</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Moeten hier nog weynig <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Sijn besteedt in traan en <rhyme label="b" type="m">sugt</rhyme>:</l>
        <l id="s11:l3" met="4" type="+-">Sijn besteedt in traan en <rhyme label="b" type="m" corresp="#s11:l2">sugt</rhyme>:</l>
        <l id="s11:l4" met="4" type="+-">Laat het ons geduldig <rhyme label="a" type="f" corresp="#s11:l1">dragen</rhyme></l>
        <l id="s11:l5" met="4" type="+-">Vlugt de tijd ons' moeyte <rhyme label="b" type="m" corresp="#s11:l2">vlugt</rhyme>.</l>
        <l id="s11:l6" met="4" type="+-">Vlugt de tijd ons' moeyte <rhyme label="b" type="m" corresp="#s11:l2">vlugt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Hier sal 't lesen ons <rhyme label="a" type="f">vermaken</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">En de daden van de <rhyme label="b" type="m">Deugd</rhyme>:</l>
        <l id="s12:l3" met="4" type="+-">En de daden van de <rhyme label="b" type="m" corresp="#s12:l2">Deugd</rhyme>:</l>
        <l id="s12:l4" met="4" type="+-">Tot het Woord ons self genaack, <rhyme label="a" type="f" corresp="#s12:l1">en</rhyme></l>
        <l id="s12:l5" met="4" type="+-">Sy ons eyndelose <rhyme label="b" type="m" corresp="#s12:l2">vreugd</rhyme>.</l>
        <l id="s12:l6" met="4" type="+-">Sy ons eyndelose <rhyme label="b" type="m" corresp="#s12:l2">vreugd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
