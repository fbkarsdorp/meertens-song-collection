  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Kan men grooter zege <rhyme label="a" type="f">wensen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Als den vrede met de <rhyme label="a" type="f" corresp="#s1:l1">mensen</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Waar door ons <rhyme label="b" type="m">God</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Verleent een zalig <rhyme label="b" type="m" corresp="#s1:l3">lot</rhyme>.</l>
        <l id="s1:l5" met="1" type="-+">De <rhyme label="c" type="m">deugd</rhyme></l>
        <l id="s1:l6" met="1" type="-+">
          <rhyme label="c" type="m" corresp="#s1:l5">Verheugd</rhyme>
        </l>
        <l id="s1:l7" met="3" type="-+">De ziel, in <rhyme label="d" type="f">zwarigheden</rhyme>:</l>
        <l id="s1:l8" met="2" type="+-">Zoo 't <rhyme label="e" type="m">gemoed</rhyme></l>
        <l id="s1:l9" met="2" type="+-">Niet en <rhyme label="e" type="m" corresp="#s1:l8">wroet</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Om zijn lusten te <rhyme label="d" type="f" corresp="#s1:l7">besteden</rhyme></l>
        <l id="s1:l11" met="2" type="+-">In <rhyme label="f" type="m">gewin</rhyme>,</l>
        <l id="s1:l12" met="2" type="+-">Welkers <rhyme label="f" type="m" corresp="#s1:l11">min</rhyme></l>
        <l id="s1:l13" met="4" type="+-">Dolen doet des mensen <rhyme label="f" type="m" corresp="#s1:l11">zin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Zalig zijn dan zulke <rhyme label="a" type="f">zielen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Daar noit vuyligheen op <rhyme label="a" type="f" corresp="#s2:l1">vielen</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Van <rhyme label="b" type="m">ydelheyt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die 't hart te ligt <rhyme label="b" type="m" corresp="#s2:l3">verleyt</rhyme>.</l>
        <l id="s2:l5" met="1" type="-+">Want <rhyme label="c" type="m">zoo</rhyme></l>
        <l id="s2:l6" met="1" type="-+">men <rhyme label="c" type="m" corresp="#s2:l5">noo</rhyme></l>
        <l id="s2:l7" met="3" type="-+">De werrelt wil <rhyme label="d" type="f">verlaten</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Hoe zal <rhyme label="e" type="m">God</rhyme></l>
        <l id="s2:l9" met="2" type="+-">'t Vals <rhyme label="e" type="m" corresp="#s2:l8">genot</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Ons van 't aards vermaak doen <rhyme label="d" type="f" corresp="#s2:l7">haten</rhyme></l>
        <l id="s2:l11" met="2" type="+-">Waar in 't <rhyme label="f" type="m">hert</rhyme></l>
        <l id="s2:l12" met="2" type="+-">Steeds <rhyme label="f" type="m" corresp="#s2:l11">verwerd</rhyme></l>
        <l id="s2:l13" met="4" type="+-">In het end bedrogen <rhyme label="f" type="m" corresp="#s2:l11">wert</rhyme>?</l>
      </lg>
    </lg>
  </text>
