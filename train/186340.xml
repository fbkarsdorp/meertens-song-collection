<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186340</id>
    <date>
      <year-start>1725</year-start>
      <year-end>1725</year-end>
    </date>
    <tags/>
    <melody>Réveillez-vous belle endormie</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wat baat het u te zijn <rhyme label="a" type="f">gesprooten</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Uyt oud en <rhyme label="b" type="m">over-edel-bloed</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wat baat de zwagery der <rhyme label="a" type="f" corresp="#s1:l1">grooten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">So gy alleen ’’t nagts leggen <rhyme label="b" type="m" corresp="#s1:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat helpen Koninklyke <rhyme label="a" type="f">schatten</rhyme></l>
        <l id="s2:l2" met="4" type="-+">En Renten, van ontelbaar <rhyme label="b" type="m">goed</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ia meer dan huys en kost kan <rhyme label="a" type="f" corresp="#s2:l1">vatten</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Zo gy alleen ’’t nagts leggen <rhyme label="b" type="m" corresp="#s2:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat helpt de heerschappy van <rhyme label="a" type="f">landen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Van volk en steden, die gy <rhyme label="b" type="m">goed</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Schoon zy u tortsen hun <rhyme label="a" type="f" corresp="#s3:l1">handen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Zo hy alleen ’’t nagts leggen <rhyme label="b" type="m" corresp="#s3:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Waar toe een lange sleep van <rhyme label="a" type="f">knegten</rhyme></l>
        <l id="s4:l2" met="4" type="-+">En met livery bekleeden <rhyme label="b" type="m">stoet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die alles op u wenk <rhyme label="a" type="f" corresp="#s4:l1">beslegten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">So gy alleen ’’t nagts leggen <rhyme label="b" type="m" corresp="#s4:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Waartoe’’t gestreel van keel, en <rhyme label="a" type="f">snaren</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En wijn, die sorg verstuyven <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Met al ’’t vermaak van bos en <rhyme label="a" type="f" corresp="#s5:l1">baren</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">So gy alleen ’’t nagts leggen <rhyme label="b" type="m" corresp="#s5:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wat geeft de lust van schoone <rhyme label="a" type="f">maagden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En haar geselschap bly en <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hoe lodd’’rig zy uw ziel <rhyme label="a" type="f" corresp="#s6:l1">behaagden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">So gy alleen ’’t nagts leggen <rhyme label="b" type="m" corresp="#s6:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Geslagt, nog geld, mog staat, nog <rhyme label="a" type="f">magten</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Wanneer het Minnegoodje <rhyme label="b" type="m">woed</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Kan uwe sorg en qualen <rhyme label="a" type="f" corresp="#s7:l1">sagten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">So gy alleen ’’t nagts leggen <rhyme label="b" type="m" corresp="#s7:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Al wat men lust noemt en <rhyme label="a" type="f">vermaken</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Is ziel en lighaam niet dan <rhyme label="b" type="m">roet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Voor wien de strenge min moet <rhyme label="a" type="f" corresp="#s8:l1">waken</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En die alleen ’’t nagts leggen <rhyme label="b" type="m" corresp="#s8:l2">moet</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Voor my, om ’’t hart regt uyt te <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Die noit om groote schatten <rhyme label="b" type="m">wroet</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">’’k Laat liever, al dat sootje <rhyme label="a" type="f" corresp="#s9:l1">steken</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Soo ik alleen ’’t nagts leggen <rhyme label="b" type="m" corresp="#s9:l2">moet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
