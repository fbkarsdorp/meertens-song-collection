  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">S' Werelts minnaers doe uw' <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Open, siet hoe 't Werelts <rhyme label="b" type="m">aes</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Uw' bedrieght, en heeft <rhyme label="a" type="f" corresp="#s1:l1">bedroghen</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Ghy zijt soo blint, sot en <rhyme label="b" type="m" corresp="#s1:l2">dwaes</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Ghy meent dat de Werelt <rhyme label="c" type="m">wijn</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Geeft; 't is maer schuym en <rhyme label="c" type="m" corresp="#s1:l5">fenijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Uw' belooft wel goude <rhyme label="a" type="f">Bergen</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Ia, d'aldermeeste <rhyme label="b" type="m">genught</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Om uw' tot sijn dienst te <rhyme label="a" type="f" corresp="#s2:l1">terghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Bouwt kastelen in de <rhyme label="b" type="m" corresp="#s2:l2">lucht</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">De Werelt met valsche <rhyme label="c" type="m">schijn</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Geeft geen vreught; maer rouw, en <rhyme label="c" type="m" corresp="#s2:l5">pijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Meent ghy, meent ghy door het <rhyme label="a" type="f">trouwen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Te komen tot vreughdt en <rhyme label="b" type="m">rust</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Weet dat trouwen is vol <rhyme label="a" type="f" corresp="#s3:l1">rouwen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Vol droefheyt, smart en <rhyme label="b" type="m" corresp="#s3:l2">onlust</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Die alderbest is <rhyme label="c" type="m">getrout</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Wist ghy, hoe haeest 't hem <rhyme label="c" type="m" corresp="#s3:l5">berout</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Aenhoort ghy niet alle <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Het volck van de echte <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Suchten weenen bitter <rhyme label="a" type="f" corresp="#s4:l1">klagen</rhyme>?</l>
        <l id="s4:l4" met="4" type="+-">Nu bevind ick al te <rhyme label="b" type="m" corresp="#s4:l2">laet</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Trouwen geeft een druppel <rhyme label="c" type="m">wijn</rhyme>;</l>
        <l id="s4:l6" met="4" type="+-">'t Aldersgrootste vat <rhyme label="c" type="m" corresp="#s4:l5">azijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Soo ghy neemt in d' aersche <rhyme label="a" type="f">dingen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Uw' vermaeck, uw' <rhyme label="b" type="m">soetigheyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Gelijck den Worm sult ghy <rhyme label="a" type="f" corresp="#s5:l1">vringen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Als ghy van den aerde <rhyme label="b" type="m" corresp="#s5:l2">scheyt</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Te laet, sult roepen: och! <rhyme label="c" type="m">och</rhyme>!</l>
        <l id="s5:l6" met="4" type="+-">Werelt, 'k sie uw' valsch <rhyme label="c" type="m" corresp="#s5:l5">bedrogh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Seght ghy in mijn oude <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Sal ick dienen Godt den <rhyme label="b" type="m">Heer</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Kan Godt uw' niet sonder <rhyme label="a" type="f" corresp="#s6:l1">vragen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Late vallen stracx daer <rhyme label="b" type="m" corresp="#s6:l2">ne'er</rhyme>?</l>
        <l id="s6:l5" met="4" type="+-">d' Oude schoenen als een <rhyme label="c" type="m">sot</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Geeft niet aen uw' Heer, en <rhyme label="c" type="m" corresp="#s6:l5">Godt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">U Rijckdom, en hoogste <rhyme label="a" type="f">staten</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Uw' schoonheyt; al dat ghy <rhyme label="b" type="m">mindt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Zijnen als de kranckste <rhyme label="a" type="f" corresp="#s7:l1">vaten</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Als een schaduw' roock en <rhyme label="b" type="m" corresp="#s7:l2">windt</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">d' Aerd'sche saken zijn als <rhyme label="c" type="m">glas</rhyme>;</l>
        <l id="s7:l6" met="4" type="+-">Al 't Werelts breeckt licht en <rhyme label="c" type="m" corresp="#s7:l5">ras</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Inde deught wilt uw' <rhyme label="a" type="f">vermaken</rhyme>:</l>
        <l id="s8:l2" met="4" type="+-">Dient Godt, en wacht uw' van 't <rhyme label="b" type="m">quaet</rhyme>;</l>
        <l id="s8:l3" met="4" type="+-">In uw' sterven dese <rhyme label="a" type="f" corresp="#s8:l1">saken</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Sullen uw' alleen doen <rhyme label="b" type="m" corresp="#s8:l2">baet</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Al 't Werelts van uw' zal <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Als ghy voor 't oordeel sult <rhyme label="c" type="m" corresp="#s8:l5">staen</rhyme>:</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Wilt u hierom nu <rhyme label="a" type="f">begeven</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Tot de dienst van Godt, uw' <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Met vreught aentast 't geest'lijck <rhyme label="a" type="f" corresp="#s9:l1">leven</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Siet niet om na Vrient, noch <rhyme label="b" type="m" corresp="#s9:l2">eer</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Uw' niet langer binden <rhyme label="c" type="m">laet</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Aen een stroo, of Spin'kops <rhyme label="c" type="m" corresp="#s9:l5">draet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Mijn oogen gaen, gaen heel <rhyme label="a" type="f">open</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Met ootmoedicheyt seer <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Ick sal soo tot Jesum <rhyme label="a" type="f" corresp="#s10:l1">loopen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">(Die geen Sondaers, en <rhyme label="b" type="m" corresp="#s10:l2">verstoot</rhyme>)</l>
        <l id="s10:l5" met="4" type="+-">Heer ontfanght 't verlooren <rhyme label="c" type="m">Kindt</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Dat de Werelt heeft <rhyme label="c" type="m" corresp="#s10:l5">verblindt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Ick beken, en moet <rhyme label="a" type="f">belijden</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Al 't geene dat d'aerden <rhyme label="b" type="m">geeft</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Kan een Mensch soo niet <rhyme label="a" type="f" corresp="#s11:l1">verblijden</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Dat hy versadinghen <rhyme label="b" type="m" corresp="#s11:l2">heeft</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Jesu! ghy een Mensch <rhyme label="c" type="m">versaet</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Die leeft na u wil, en <rhyme label="c" type="m" corresp="#s11:l5">raet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Wilt o Jesu! my <rhyme label="a" type="f">verstercken</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Dat 'k u dien met suyv're <rhyme label="b" type="m">le'en</rhyme>;</l>
        <l id="s12:l3" met="4" type="+-">Dat ick met woorden, en <rhyme label="a" type="f" corresp="#s12:l1">wercken</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Uw' bemin, en anders <rhyme label="b" type="m" corresp="#s12:l2">geen</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Geeft dat d'yd'le <rhyme label="c" type="m">ydelheyt</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Mijn niet meer van uw' <rhyme label="c" type="m" corresp="#s12:l5">verleyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
