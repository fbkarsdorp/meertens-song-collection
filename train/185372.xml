  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Nu schei ik af van <rhyme label="a" type="m">Africa</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En Caap de Goede <rhyme label="b" type="m">Hoop</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En boeg myn koers met vreugde <rhyme label="a" type="m" corresp="#s1:l1">na</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Een Land daar ik na <rhyme label="b" type="m" corresp="#s1:l2">noop</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Waar dat men spreekt, gelyk men <rhyme label="c" type="m">denkt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En voor de Waarheid <rhyme label="d" type="m">stryd</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Daar liefde en trouw blyft <rhyme label="c" type="m" corresp="#s1:l5">ongekrenkt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Tot dat de dood ons <rhyme label="d" type="m" corresp="#s1:l6">scheid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daar leefd een ieder vrank en <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Waar dat hy gaat of <rhyme label="b" type="m">staat</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Den Burger en den Burger <rhyme label="a" type="m" corresp="#s2:l1">Heer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In een Egaale <rhyme label="b" type="m" corresp="#s2:l2">graat</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">De Knegt en Meid gelyk hun <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als zy maar braaf <rhyme label="d" type="m">bestond</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">'t Recht kend Bedelaar nog <rhyme label="c" type="m" corresp="#s2:l5">Heer</rhyme>!</l>
        <l id="s2:l8" met="3" type="-+">Men vonnist daar <rhyme label="d" type="m" corresp="#s2:l6">gegrond</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zoo ymand scheld of vinnig <rhyme label="a" type="m">spreekt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die word daar voor <rhyme label="b" type="m">gestraft</rhyme>!</l>
        <l id="s3:l3" met="4" type="-+">Een schurfde kwant of galgen <rhyme label="a" type="m" corresp="#s3:l1">aas</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Word loon na werk <rhyme label="b" type="m" corresp="#s3:l2">verschaft</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">'t Gaat daar heel aârs als op de <rhyme label="c" type="m">Caap</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daar men de Christen <rhyme label="d" type="m">scheld</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Voor schurfde kwant of galgen <rhyme label="c" type="m" corresp="#s3:l5">raaf</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Als schuim voor niets <rhyme label="d" type="m" corresp="#s3:l6">geteld</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En had men hier geen <rhyme label="a" type="m">Europees</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Zeg Africaans <rhyme label="b" type="m">gebroed</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">Van wien gy leefd en word <rhyme label="a" type="m" corresp="#s4:l1">geleert</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hoe dat gy leven <rhyme label="b" type="m" corresp="#s4:l2">moet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En zoo men nagaat u <rhyme label="c" type="m">geslagt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Van Vaar of <rhyme label="d" type="m">Bestevaar</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Zoo is 't Matroosje of <rhyme label="c" type="m" corresp="#s4:l5">Soldaat</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Aârs Hottentot, niet <rhyme label="d" type="m" corresp="#s4:l6">waar</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De pragt en glorie kampt om <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hier in dit zwarte <rhyme label="b" type="m">Land</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Geen onderscheid van kleed is <rhyme label="a" type="m" corresp="#s5:l1">hier</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In hoog of laage <rhyme label="b" type="m" corresp="#s5:l2">stand</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En wat de Vrouwe aan mag <rhyme label="c" type="m">gaan</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">In schyn zoo zynze <rhyme label="d" type="m">braaf</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">En word haar lyf niet regt <rhyme label="c" type="m" corresp="#s5:l5">geschroeft</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Dan houwen ze met een <rhyme label="d" type="m" corresp="#s5:l6">slaaf</rhyme>.</l>
      </lg>
    </lg>
  </text>
