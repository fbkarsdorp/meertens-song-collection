  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Zonder liefde zonder <rhyme label="a" type="m">wyn</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Wat baat ons het <rhyme label="b" type="f">leeven</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Leef dan altoos <rhyme label="a" type="m" corresp="#s1:l1">souvereyn</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Zonder <rhyme label="b" type="f" corresp="#s1:l2">wederstreeven</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Want ons grootste smert en <rhyme label="c" type="m">pyn</rhyme></l>
        <l id="s1:l6" met="3" type="+-">wat kan ons dat <rhyme label="d" type="f">vlyde</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Mooye Meisjes goede <rhyme label="c" type="m" corresp="#s1:l5">wyn</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Een van dees twee <rhyme label="d" type="f" corresp="#s1:l6">beide</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Seeker die zig seeker <rhyme label="a" type="m">houd</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Vraag niet na het <rhyme label="b" type="f">treure</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Want zy hebben <rhyme label="a" type="m" corresp="#s2:l1">vastgeboud</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Dat haar nooyd mag <rhyme label="b" type="f" corresp="#s2:l2">beure</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ons drukt ook de liefdens <rhyme label="c" type="m">pyn</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Somtyds kryge wy <rhyme label="d" type="f">dorsten</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Och geeft ons maar liefdens <rhyme label="c" type="m" corresp="#s2:l5">wyn</rhyme>;</l>
        <l id="s2:l8" met="3" type="+-">Dan zyn wy weer <rhyme label="d" type="f" corresp="#s2:l6">vorsten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ieder is dan maar <rhyme label="a" type="m">verblyd</rhyme>;</l>
        <l id="s3:l2" met="3" type="+-">In zyn Ionge <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Slyt uw tyd in <rhyme label="a" type="m" corresp="#s3:l1">zoetigheid</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">wil geen oorsaak <rhyme label="b" type="f" corresp="#s3:l2">geven</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Tot een stuurs gezigt! Ã´ <rhyme label="c" type="m">pyn</rhyme></l>
        <l id="s3:l6" met="3" type="+-">wilt maar vrolyk <rhyme label="d" type="f">wezen</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Een mooye Meid en een Glas <rhyme label="c" type="m" corresp="#s3:l5">wyn</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Kan ons hert <rhyme label="d" type="f" corresp="#s3:l6">genezen</rhyme>.</l>
      </lg>
    </lg>
  </text>
