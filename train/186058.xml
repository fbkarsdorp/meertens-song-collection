  <author>Hermanus van den Burg</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WEg wreede <rhyme label="a" type="m">Mars</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Die Huis en <rhyme label="b" type="f">Landen</rhyme>,</l>
        <l id="s1:l3" met="1" type="-+">Doet <rhyme label="b" type="f" corresp="#s1:l2">branden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wy zyn uw byzyn wars, <rhyme label="a" type="m" corresp="#s1:l1">Weg</rhyme></l>
        <l id="s1:l5" met="2" type="-+">De zoete <rhyme label="c" type="m">Vreê</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Woont hier <rhyme label="c" type="m" corresp="#s1:l5">alreê</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">En vest haar troon aan onze <rhyme label="b" type="f" corresp="#s1:l2">stranden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Wy zyn u <rhyme label="a" type="m">zat</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Met al uw <rhyme label="b" type="f">vechten</rhyme>,</l>
        <l id="s2:l3" met="1" type="-+">En <rhyme label="b" type="f" corresp="#s2:l2">Knechten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van brein en bloed bespat: <rhyme label="a" type="m" corresp="#s2:l1">Wy</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Wy zullen <rhyme label="c" type="m">nu</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Voor 't vechten <rhyme label="c" type="m" corresp="#s2:l5">schuuw</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">By Vreede al onzen twist <rhyme label="b" type="f" corresp="#s2:l2">beslechten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Waar is uw' <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Zoo hoog <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s3:l3" met="1" type="-+"><rhyme label="b" type="f" corresp="#s3:l2">Gebleeven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daar yder om u lacht? <rhyme label="a" type="m" corresp="#s3:l1">Wavr</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Om dat u <rhyme label="c" type="m">nouw</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Een zwakke <rhyme label="c" type="m" corresp="#s3:l5">Vrouw</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Voor haar Olyvetak doet <rhyme label="b" type="f" corresp="#s3:l2">beeven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Verbreek uw <rhyme label="a" type="m">zwaard</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">En ruim de <rhyme label="b" type="f">stranden</rhyme>,</l>
        <l id="s4:l3" met="1" type="-+">En <rhyme label="b" type="f" corresp="#s4:l2">Landen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Door eenen Leeuw bewaart. <rhyme label="a" type="m" corresp="#s4:l1">Ver</rhyme>-</l>
        <l id="s4:l5" met="2" type="-+">Want, komt gy <rhyme label="c" type="m">weêr</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Gelyk wel <rhyme label="c" type="m" corresp="#s4:l5">eer</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Zal hy u dooden met zyn' <rhyme label="b" type="f" corresp="#s4:l2">tanden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Men tracht om <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Hem te <rhyme label="b" type="f">bespringen</rhyme>,</l>
        <l id="s5:l3" met="1" type="-+">Te <rhyme label="b" type="f" corresp="#s5:l2">dwingen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Hy doot al wat hy ziet. <rhyme label="a" type="m" corresp="#s5:l1">Men</rhyme></l>
        <l id="s5:l5" met="2" type="-+">De Vryheits <rhyme label="c" type="m">Hoed</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Daar elk om <rhyme label="c" type="m" corresp="#s5:l5">woed</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Is niet gemaklyk hem <rhyme label="b" type="f" corresp="#s5:l2">t'ontwringen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Keer <rhyme label="a" type="m">nimmermeer</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Om onze <rhyme label="b" type="f">Kusten</rhyme>,</l>
        <l id="s6:l3" met="1" type="-+">t' <rhyme label="b" type="f" corresp="#s6:l2">Ontrusten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">De Vrede woont hier weêr. <rhyme label="a" type="m" corresp="#s6:l1">Keer</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Gy baart ons <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Dan groot <rhyme label="c" type="m" corresp="#s6:l5">verdriet</rhyme>;</l>
        <l id="s6:l7" met="4" type="-+">Zy, voed het hart met duizend <rhyme label="b" type="f" corresp="#s6:l2">lusten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Zy bracht ons <rhyme label="a" type="m">meê</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Den ryken <rhyme label="b" type="f">Horen</rhyme>,</l>
        <l id="s7:l3" met="1" type="-+">Vol <rhyme label="b" type="f" corresp="#s7:l2">Koren</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En zegend Land en Zee; <rhyme label="a" type="m" corresp="#s7:l1">Zy</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Haar keur, <rhyme label="c" type="m">behaagt</rhyme></l>
        <l id="s7:l6" met="2" type="-+">De vrye <rhyme label="c" type="m" corresp="#s7:l5">Maagd</rhyme>;</l>
        <l id="s7:l7" met="4" type="-+">Die zy omhelst, gelyk te <rhyme label="b" type="f" corresp="#s7:l2">vooren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Zy gunt ons <rhyme label="a" type="m">rust</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">En doet weer <rhyme label="b" type="f">groejen</rhyme>,</l>
        <l id="s8:l3" met="1" type="-+">En <rhyme label="b" type="f" corresp="#s8:l2">bloejen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Deez' vrygevochten Kust; <rhyme label="a" type="m" corresp="#s8:l1">Zy</rhyme></l>
        <l id="s8:l5" met="2" type="-+">Haar gunste <rhyme label="c" type="m">zal</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Ons vruchtbaar <rhyme label="c" type="m" corresp="#s8:l5">Dal</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Met zoeten Hemeldaauw <rhyme label="b" type="f" corresp="#s8:l2">besproejen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Nu zal op <rhyme label="a" type="m">Zee</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">In 's Lands <rhyme label="b" type="f">Banieren</rhyme>,</l>
        <l id="s9:l3" met="1" type="-+">Weêr <rhyme label="b" type="f" corresp="#s9:l2">zwieren</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Het teken van de Vreê; <rhyme label="a" type="m" corresp="#s9:l1">Nu</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Want Nêerlands <rhyme label="c" type="m">Vloot</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Heeft nu geen <rhyme label="c" type="m" corresp="#s9:l5">noot</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Van afgerechte <rhyme label="b" type="f" corresp="#s9:l2">watergieren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Gaa Zeeman <rhyme label="a" type="m">gaa</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">Op 's Koopmans <rhyme label="b" type="f">kneepen</rhyme>,</l>
        <l id="s10:l3" met="1" type="-+"><rhyme label="b" type="f" corresp="#s10:l2">Gesleepen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Vergoe geleden schaâ; <rhyme label="a" type="m" corresp="#s10:l1">Gaa</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Bruis door het <rhyme label="c" type="m">nat</rhyme>,</l>
        <l id="s10:l6" met="2" type="-+">En sleep een <rhyme label="c" type="m" corresp="#s10:l5">schat</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Naar Nederland, in uwe <rhyme label="b" type="f" corresp="#s10:l2">Schepen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
