  <author>Barent Pietersz. Kompas</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OCh goedertieren <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Een wormpje swack en <rhyme label="a" type="m" corresp="#s1:l1">teer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Komt voor u <rhyme label="b" type="f">neergeboogen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ey! wilt my niet <rhyme label="c" type="m">versmaen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Maer neem mijn beeden <rhyme label="c" type="m" corresp="#s1:l4">aen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En heb doch <rhyme label="b" type="f" corresp="#s1:l3">meede-doogen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soo ghy geen hulpe <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Vind ick te swack mijn <rhyme label="a" type="m" corresp="#s2:l1">voet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Om 't rechte spoor te <rhyme label="b" type="f">houwen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ick bid dan lieve <rhyme label="c" type="m">Heer</rhyme>!</l>
        <l id="s2:l5" met="3" type="-+">Verlaet my <rhyme label="c" type="m" corresp="#s2:l4">nimmermeer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Op u wil ick <rhyme label="b" type="f" corresp="#s2:l3">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick hoope vroegh en <rhyme label="a" type="m">spa</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O Heer! op uw' <rhyme label="a" type="m" corresp="#s3:l1">gena</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wilt my daer mee <rhyme label="b" type="f">besproeyen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Op dat daer door mijn <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Gestaegh bevonden <rhyme label="c" type="m" corresp="#s3:l4">werdt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In ware deught te <rhyme label="b" type="f" corresp="#s3:l3">groeyen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ach! siet mijn Ionckheydt <rhyme label="a" type="m">aen</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Wilt op des levens <rhyme label="a" type="m" corresp="#s4:l1">Paen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Mijn Voeten steedts <rhyme label="b" type="f">geleyden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat ick in't eynd' des <rhyme label="c" type="m">Reys</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">In 't Hemels <rhyme label="c" type="m" corresp="#s4:l4">Paradijs</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">My eeuwigh mach <rhyme label="b" type="f" corresp="#s4:l3">verblijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O! wat sou 't heerlijck <rhyme label="a" type="m">zijn</rhyme>?</l>
        <l id="s5:l2" met="3" type="-+">Dat ick u Heer, tot <rhyme label="a" type="m" corresp="#s5:l1">mijn</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Noch eens mocht hooren <rhyme label="b" type="f">seggen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ey kom getrouwe <rhyme label="c" type="m">Knecht</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">In 't weynigh deed' ghy <rhyme label="c" type="m" corresp="#s5:l4">recht</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ick sal u veel <rhyme label="b" type="f" corresp="#s5:l3">toeleggen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
