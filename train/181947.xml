    <tags/>
    <melody>Rijs op mijn vriendin</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">NU moet ik gaen <rhyme label="a" type="f">dwalen</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Langs Bergen de <rhyme label="a" type="f" corresp="#s1:l1">Dalen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Om te agter <rhyme label="a" type="f" corresp="#s1:l1">halen</rhyme>:</l>
        <l id="s1:l4" met="2" type="-+">Myn schoon <rhyme label="b" type="m">Herderin</rhyme>:</l>
        <l id="s1:l5" met="5" type="-+">Sy dryft haer Schaepjes soo te velden <rhyme label="b" type="m" corresp="#s1:l4">in</rhyme>;</l>
        <l id="s1:l6" met="2" type="-+">Waer sal ik se <rhyme label="c" type="f">vinden</rhyme>?</l>
        <l id="s1:l7" met="2" type="-+">Myn <rhyme label="c" type="f" corresp="#s1:l6">wel-beminde</rhyme>:</l>
        <l id="s1:l8" met="3" type="+-">Myn schoon <rhyme label="b" type="m" corresp="#s1:l4">Herderin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ik sal myn <rhyme label="a" type="f">verkloeken</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Ik sal se gaen <rhyme label="a" type="f" corresp="#s2:l1">soeken</rhyme>:</l>
        <l id="s2:l3" met="2" type="-+">In alle de <rhyme label="a" type="f" corresp="#s2:l1">hoeken</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Of ik se vinden <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s2:l5" met="5" type="-+">Sy is ’er die geen daer myn jonk hert na <rhyme label="b" type="m" corresp="#s2:l4">tragt</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Moet ik haer dan <rhyme label="c" type="f">derven</rhyme>;</l>
        <l id="s2:l7" met="2" type="-+">Ik wou liever <rhyme label="c" type="f" corresp="#s2:l6">sterven</rhyme>!</l>
        <l id="s2:l8" met="3" type="+-">Voor soo een fiere <rhyme label="b" type="m" corresp="#s2:l4">Maegd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Seer blydschap van <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Was dees <rhyme label="a" type="f" corresp="#s3:l1">Herderinne</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Soo te velde <rhyme label="a" type="f" corresp="#s3:l1">inne</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Al met haer Schaepjes <rhyme label="b" type="m">zoet</rhyme>:</l>
        <l id="s3:l5" met="5" type="-+">Sy zong daer een <rhyme label="b" type="m" corresp="#s3:l4">Liedje</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Sy was wel <rhyme label="c" type="f">gemoed</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Ik kwam haer <rhyme label="c" type="f" corresp="#s3:l6">tegen</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Ik heb haer ter degen, vriendelyk <rhyme label="b" type="m" corresp="#s3:l4">gegroet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Aen een <rhyme label="a" type="f">water-stroomen</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Ben ik by haar <rhyme label="a" type="f" corresp="#s4:l1">gekoomen</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Onder al de boomen, Lief zet u wat <rhyme label="a" type="f" corresp="#s4:l1">neer</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Ik zeide schoen <rhyme label="b" type="m">kind</rhyme>,</l>
        <l id="s4:l5" met="5" type="-+">’t Is voor de laatste <rhyme label="b" type="m" corresp="#s4:l4">keer</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Dat ik u mag <rhyme label="c" type="f">spreeken</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Ja myn hert moet <rhyme label="c" type="f" corresp="#s4:l6">breeken</rhyme>:</l>
        <l id="s4:l8" met="3" type="+-">Scheakt ’er myn maar u <rhyme label="b" type="m" corresp="#s4:l4">eer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Wel Herder <rhyme label="a" type="f">gepreezen</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Wild zo wreed niet <rhyme label="a" type="f" corresp="#s5:l1">weezen</rhyme>:</l>
        <l id="s5:l3" met="2" type="-+">Ik zal toonen mits <rhyme label="a" type="f" corresp="#s5:l1">deezen</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Hier <rhyme label="b" type="m">standvastigheid</rhyme>,</l>
        <l id="s5:l5" met="5" type="-+">En myn eerbaar hart, dat is voor <rhyme label="b" type="m" corresp="#s5:l4">altyd</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Kom laat ons <rhyme label="c" type="f">verbinden</rhyme>:</l>
        <l id="s5:l7" met="2" type="-+">Myn wel <rhyme label="c" type="f" corresp="#s5:l6">beminden</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Tot de dood ons <rhyme label="b" type="m" corresp="#s5:l4">scheid</rhyme>.</l>
      </lg>
    </lg>
  </text>
