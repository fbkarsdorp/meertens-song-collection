    <melody>Margriet onze maagd beklaagt haar trouw</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Livinus van der Minnen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE jeught die hedens-daeghs nu <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Als sy haer tot de Trouw <rhyme label="a" type="m" corresp="#s1:l1">begheeft</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En siet naer rimpel’ Oft naer <rhyme label="b" type="f">schramminckel</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als maer de beurs gheen rimpels <rhyme label="a" type="m" corresp="#s1:l1">heeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Twee herten waren eens de <rhyme label="a" type="m">Trouw</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Maer 't zyn twee volle borsen <rhyme label="a" type="m" corresp="#s2:l1">nouw</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Men siet naer 't gelleken’ En niet naer 't <rhyme label="b" type="f">velleken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Men siet nu naer een rycke <rhyme label="a" type="m" corresp="#s2:l1">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Men siet nu dat de jeught meer <rhyme label="a" type="m">dorst</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Naer een goey Bors als een goey <rhyme label="a" type="m" corresp="#s3:l1">Borst</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">'t Zyn gulde tyen’ 't Gout siet-men <rhyme label="b" type="f">vryen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">De Jeught die houwt en trouwt met <rhyme label="a" type="m" corresp="#s3:l1">gout</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Groot goedt maeckt slechte quidams <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Den armen is een' slechten <rhyme label="a" type="m" corresp="#s4:l1">bloet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De groote Jonckers’ En groote <rhyme label="b" type="f">pronckers</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Zyn van de Vrysters meest <rhyme label="a" type="m" corresp="#s4:l1">ghegroet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer die een Dant trouwt om haer <rhyme label="a" type="m">Landt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Verliest het Landt en houdt de <rhyme label="a" type="m" corresp="#s5:l1">Dant</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En die een Ventjen’ Trouwt om syn <rhyme label="b" type="f">rentjen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Verliest de rent en houdt den <rhyme label="a" type="m" corresp="#s5:l1">Vent</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daerom houd' ick meer van de <rhyme label="a" type="m">deught</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">De deught is 't die het hert <rhyme label="a" type="m" corresp="#s6:l1">verheught</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Het ghelt baert suchten’ De deught <rhyme label="b" type="f">ghenuchten</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Een goede Vrouw is al myn <rhyme label="a" type="m" corresp="#s6:l1">vreught</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ick ben veel liever tot droogh <rhyme label="a" type="m">broodt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Als tot 't vet Kalf met haet <rhyme label="a" type="m" corresp="#s7:l1">ghenoodt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">'k En heb gheen gadingh’ In groote <rhyme label="b" type="f">bladingh</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Groot goet maeckt somtydts grooten <rhyme label="a" type="m" corresp="#s7:l1">noot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Al heeft myn Lief gheen machtigh <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ick blyf al even-wel <rhyme label="a" type="m" corresp="#s8:l1">ghemoedt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Want famen winnen’ Maeckt blyde <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Te-samen winnen is soo <rhyme label="a" type="m" corresp="#s8:l1">soet</rhyme>.</l>
      </lg>
    </lg>
  </text>
