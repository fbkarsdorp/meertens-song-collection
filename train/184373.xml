  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O die alles had <rhyme label="a" type="f">verloren</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">Ook zich zelfs, en t'aller <rhyme label="b" type="m">tyd</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Slegs het Een' had <rhyme label="a" type="f" corresp="#s1:l1">uitverkoren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">'t Welk den geest en 't hart <rhyme label="b" type="m" corresp="#s1:l2">verblydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">O die alles had <rhyme label="a" type="f">vergeten</rhyme>!</l>
        <l id="s2:l2" met="4" type="+-">Om na by zyn God te <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wiens genaade, <rhyme label="a" type="f" corresp="#s2:l1">ongemeten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Maakt het hert gerust en <rhyme label="b" type="m" corresp="#s2:l2">rein</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">O was onze ziel <rhyme label="a" type="f">verdronken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In des Heilands <rhyme label="b" type="m">Liefde-zee</rhyme>!</l>
        <l id="s3:l3" met="4" type="+-">Daar door was zy gansch <rhyme label="a" type="f" corresp="#s3:l1">ontzonken</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Alle kommer, angst en <rhyme label="b" type="m" corresp="#s3:l2">wee</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">O die 't aardsche daar kon <rhyme label="a" type="f">laaten</rhyme>!</l>
        <l id="s4:l2" met="4" type="+-">Dat hy vry van 't ydel <rhyme label="b" type="m">all'</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Wand'len mogt op 's vreedes <rhyme label="a" type="f" corresp="#s4:l1">straaten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Door dit droevig <rhyme label="b" type="m" corresp="#s4:l2">jammerdal</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">O was dat ons hert <rhyme label="a" type="f">ontnomen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">'t Welk verlokt door yd'len <rhyme label="b" type="m">glans</rhyme>!</l>
        <l id="s5:l3" met="4" type="+-">En af houdt tot God te <rhyme label="a" type="f" corresp="#s5:l1">komen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">In wien alle Goed is <rhyme label="b" type="m" corresp="#s5:l2">gansch</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">O dat wy den Heiland <rhyme label="a" type="f">vonden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">In ons, door zyn Liefde <rhyme label="b" type="m">stem</rhyme>!</l>
        <l id="s6:l3" met="4" type="+-">En ons eeuwig Hem <rhyme label="a" type="f" corresp="#s6:l1">verbonden</rhyme>!</l>
        <l id="s6:l4" met="4" type="+-">Niets is alles buiten <rhyme label="b" type="m" corresp="#s6:l2">Hem</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">O was 't ooge van ons <rhyme label="a" type="f">herte</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Steeds alleen tot God <rhyme label="b" type="m">gewendt</rhyme>!</l>
        <l id="s7:l3" met="4" type="+-">Zo had ook, de vrees en <rhyme label="a" type="f" corresp="#s7:l1">smerte</rhyme></l>
        <l id="s7:l4" met="4" type="+-">In 't Geweeten, gansch een <rhyme label="b" type="m" corresp="#s7:l2">end</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">O Gy oorspronk alles <rhyme label="a" type="f">Leevens</rhyme>!</l>
        <l id="s8:l2" met="4" type="+-">Trek, al is 't door kruis en <rhyme label="b" type="m">pyn</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Tot U Geest en ziele <rhyme label="a" type="f" corresp="#s8:l1">tevens</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Dat wy eeuwig met U <rhyme label="b" type="m" corresp="#s8:l2">zyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
