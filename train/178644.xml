  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">IK heb den Heer een' langen tyt <rhyme label="a" type="m">verwacht</rhyme>;</l>
        <l id="s1:l2" met="4" type="-+">Ny heeft hy zich tot my <rhyme label="b" type="m">gewendt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En my gehoort in myne <rhyme label="b" type="m" corresp="#s1:l2">elendt</rhyme>;</l>
        <l id="s1:l4" met="5" type="-+">Hy heeft my uit den modderkuil <rhyme label="a" type="m" corresp="#s1:l1">gebragt</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Een put vol ruischend <rhyme label="c" type="f">water</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Vol slyk en luid <rhyme label="c" type="f" corresp="#s1:l5">geschater</rhyme>;</l>
        <l id="s1:l7" met="3" type="+-">Myn voeten heeft hy <rhyme label="d" type="m">vast</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Op eene rotz <rhyme label="e" type="m">gestelt</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Myn gangen voor <rhyme label="e" type="m" corresp="#s1:l8">gewelt</rhyme></l>
        <l id="s1:l10" met="3" type="+-">Bevrydt, en <rhyme label="d" type="m" corresp="#s1:l7">overlast</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">In mynen mondt heeft hy een niew <rhyme label="a" type="m">gezang</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Gegeeven, Godt ter eere een <rhyme label="b" type="m">liedt</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Veel zullen 't zien wanneer 't <rhyme label="b" type="m" corresp="#s2:l2">geschiedt</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">En vreezen met ontzag hun leven <rhyme label="a" type="m" corresp="#s2:l1">lang</rhyme></l>
        <l id="s2:l5" met="3" type="+-">Den Heere, en hem <rhyme label="c" type="f">verwachten</rhyme>.</l>
        <l id="s2:l6" met="3" type="+-">Welzalig moetmen <rhyme label="c" type="f" corresp="#s2:l5">achten</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Hem, die op Godt <rhyme label="d" type="m">betrouwt</rhyme>;</l>
        <l id="s2:l8" met="3" type="+-">Die naar het trots <rhyme label="e" type="m">geslacht</rhyme></l>
        <l id="s2:l9" met="3" type="+-">Niet omziet, maar <rhyme label="e" type="m" corresp="#s2:l8">veracht</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Hem die op leugens <rhyme label="d" type="m" corresp="#s2:l7">bouwt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Gy hebt uw wonderen, ô Godt, myn <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En uw gedachten veel <rhyme label="b" type="m">gemaakt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Aan ons, totdatze zyn <rhyme label="b" type="m" corresp="#s3:l2">geraakt</rhyme></l>
        <l id="s3:l4" met="5" type="-+">Ontelbaar veel, zoodatmen ze niet <rhyme label="a" type="m" corresp="#s3:l1">meer</rhyme></l>
        <l id="s3:l5" met="3" type="+-">In orde kan <rhyme label="c" type="f">verhaalen</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Noch melden zonder <rhyme label="c" type="f" corresp="#s3:l5">faalen</rhyme>;</l>
        <l id="s3:l7" met="3" type="+-">Zal ik haar groot <rhyme label="d" type="m">getal</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Vertellen, 't is te <rhyme label="e" type="m">veel</rhyme>;</l>
        <l id="s3:l9" met="3" type="+-">'k Bezwyk met tonge en <rhyme label="e" type="m" corresp="#s3:l8">keel</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Als ikze ontvouwen <rhyme label="d" type="m" corresp="#s3:l7">zal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Slagtoffer, noch spysoffer lustte u <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Maar gy hebt my het oor <rhyme label="b" type="m">doorboort</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Brandtoffer is nooit door uw <rhyme label="b" type="m" corresp="#s4:l2">woordt</rhyme></l>
        <l id="s4:l4" met="5" type="-+">Geëischt, alsdaar verzoening door <rhyme label="a" type="m" corresp="#s4:l1">geschiedt</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">Toen zeide ik: ik zal <rhyme label="c" type="f">koomen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">'t Wordt middagklaar <rhyme label="c" type="f" corresp="#s4:l5">vernomen</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Dat in de rol van 't <rhyme label="d" type="m">boek</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Van my geschreven <rhyme label="e" type="m">staat</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">Naar 's Heeren hoogen <rhyme label="e" type="m" corresp="#s4:l8">raadt</rhyme>,</l>
        <l id="s4:l10" met="3" type="+-">Bekent by 't <rhyme label="d" type="m" corresp="#s4:l7">onderzoek</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Ik hebbe lust om uwen wil te <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Uw wet is in myn <rhyme label="b" type="m">ingewandt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">O Godt, en in myn hart <rhyme label="b" type="m" corresp="#s5:l2">geplant</rhyme></l>
        <l id="s5:l4" met="5" type="-+">'k Bootschappe uw kerk dat ik haar schuld <rhyme label="a" type="m" corresp="#s5:l1">verzoen</rhyme>.</l>
        <l id="s5:l5" met="3" type="+-">Hen die gy hebt <rhyme label="c" type="f">verkoren</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Doe ik met blydschap <rhyme label="c" type="f" corresp="#s5:l5">hooren</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Uw <rhyme label="d" type="m">heilsgerechtigheit</rhyme>:</l>
        <l id="s5:l8" met="3" type="+-">'k Bedwing myn lippen <rhyme label="e" type="m">niet</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">Gy weet het, Heer, en <rhyme label="e" type="m" corresp="#s5:l8">ziet</rhyme></l>
        <l id="s5:l10" met="3" type="+-">Wat in myn boezem <rhyme label="d" type="m" corresp="#s5:l7">leit</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">'k Verheele uw trouwe en goedheit niet in 't <rhyme label="a" type="m">hart</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Voor uw gemeinte, groot van <rhyme label="b" type="m">tal</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">'k Weet datge, o Heer, in dit <rhyme label="b" type="m" corresp="#s6:l2">geval</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">My uw genâ, tot ligting van myn <rhyme label="a" type="m" corresp="#s6:l1">smart</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">En gunst niet zult <rhyme label="c" type="f">onthouwen</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Als zy, die op u <rhyme label="c" type="f" corresp="#s6:l5">bouwen</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Bevinden. laat uw <rhyme label="d" type="m">trou</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">En uw <rhyme label="e" type="m">weldadigheit</rhyme></l>
        <l id="s6:l9" met="3" type="+-">My altoos zyn <rhyme label="e" type="m" corresp="#s6:l8">bereidt</rhyme>,</l>
        <l id="s6:l10" met="3" type="+-">Of ik versmelte in <rhyme label="d" type="m" corresp="#s6:l7">rou</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Want quaaden, niet te tellen, hebben <rhyme label="a" type="m">my</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Omgeeven; <rhyme label="b" type="m">d'ongerechtigheit</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Heeftme aangetast, dat ik 't <rhyme label="b" type="m" corresp="#s7:l2">bescheit</rhyme></l>
        <l id="s7:l4" met="5" type="-+">Niet konde zien. myn hoofthaair haalt niet <rhyme label="a" type="m" corresp="#s7:l1">by</rhyme></l>
        <l id="s7:l5" met="3" type="+-">'t Getal, niet op te <rhyme label="c" type="f">maaken</rhyme>.</l>
        <l id="s7:l6" met="3" type="+-">Het leet komt my <rhyme label="c" type="f" corresp="#s7:l5">genaaken</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Zoodat my 't hart <rhyme label="d" type="m">verlaat</rhyme>.</l>
        <l id="s7:l8" met="3" type="+-">'t Behaage u my dan, <rhyme label="e" type="m">Heer</rhyme>,</l>
        <l id="s7:l9" met="3" type="+-">Die in den druk <rhyme label="e" type="m" corresp="#s7:l8">verteer</rhyme>,</l>
        <l id="s7:l10" met="3" type="+-">Te redden uit dit <rhyme label="d" type="m" corresp="#s7:l7">quaadt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Dat zy beschaamt en schaamroot worden, <rhyme label="a" type="m">al</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Die op 't vernielen van myn <rhyme label="b" type="m">ziel</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">(Wanneer ik in hun handen <rhyme label="b" type="m" corresp="#s8:l2">viel</rhyme>)</l>
        <l id="s8:l4" met="5" type="-+">Steedts doelen; laat ze koomen tot den <rhyme label="a" type="m" corresp="#s8:l1">val</rhyme>.</l>
        <l id="s8:l5" met="3" type="+-">Dryfze achterwaarts met <rhyme label="c" type="f">schanden</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Wier harten men ziet <rhyme label="c" type="f" corresp="#s8:l5">branden</rhyme></l>
        <l id="s8:l7" met="3" type="+-">Naar mynen <rhyme label="d" type="m">ondergang</rhyme>:</l>
        <l id="s8:l8" met="3" type="+-">Verwoesting zy de <rhyme label="e" type="m">loon</rhyme></l>
        <l id="s8:l9" met="3" type="+-">Van hunnen schimp en <rhyme label="e" type="m" corresp="#s8:l8">hoon</rhyme></l>
        <l id="s8:l10" met="3" type="+-">Op my, hun leven <rhyme label="d" type="m" corresp="#s8:l7">lang</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="-+">Maar laat in u zyn vrolyk en <rhyme label="a" type="m">verblydt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Al die u zoeken tot <rhyme label="b" type="m">behoedt</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Der minners van uw heil en <rhyme label="b" type="m" corresp="#s9:l2">goedt</rhyme>,</l>
        <l id="s9:l4" met="5" type="-+">Zy steedts dit woordt: Verhoogt zy t'allen <rhyme label="a" type="m" corresp="#s9:l1">tyt</rhyme></l>
        <l id="s9:l5" met="3" type="+-">De Heer. 'k ben wel <rhyme label="c" type="f">elendig</rhyme>,</l>
        <l id="s9:l6" met="3" type="+-">Nootdruftig, maar <rhyme label="c" type="f" corresp="#s9:l5">inwendig</rhyme></l>
        <l id="s9:l7" met="3" type="+-">Vertroost my Godt ook <rhyme label="d" type="m">weêr</rhyme>,</l>
        <l id="s9:l8" met="3" type="+-">Omdat hy aan my <rhyme label="e" type="m">denkt</rhyme>,</l>
        <l id="s9:l9" met="3" type="+-">En my zyn hulpe <rhyme label="e" type="m" corresp="#s9:l8">schenkt</rhyme>:</l>
        <l id="s9:l10" met="3" type="+-">Vertoef dan niet, ô <rhyme label="d" type="m" corresp="#s9:l7">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
