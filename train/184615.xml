  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">VOorby is den <rhyme label="a" type="m">nacht</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Ziel, Godt u <rhyme label="a" type="m" corresp="#s1:l1">verwacht</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Om hem weer te <rhyme label="b" type="f">prysen</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Danck te <rhyme label="b" type="f" corresp="#s1:l3">bewysen</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Uyt al uwe <rhyme label="a" type="m" corresp="#s1:l1">kracht</rhyme>:</l>
        <l id="s1:l6" met="2" type="-+">De Sonn' door haer <rhyme label="c" type="f">straelen</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Roept naer s'Hemels <rhyme label="c" type="f" corresp="#s1:l6">saelen</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Uw' eerste <rhyme label="a" type="m" corresp="#s1:l1">gedacht</rhyme>.</l>
        <l id="s1:l9" met="2" type="-+">Heft t'hert naer den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">Danckt dat hy gaet <rhyme label="e" type="f">geven</rhyme></l>
        <l id="s1:l11" met="2" type="+-">Dees dagh, om te <rhyme label="e" type="f" corresp="#s1:l10">leven</rhyme></l>
        <l id="s1:l12" met="2" type="-+">Tot syn meerder <rhyme label="d" type="m" corresp="#s1:l9">eer</rhyme>:</l>
        <l id="s1:l13" met="2" type="-+">Dees dagh is <rhyme label="f" type="m">bereydt</rhyme></l>
        <l id="s1:l14" met="2" type="-+">Voor uw <rhyme label="f" type="m" corresp="#s1:l13">Saeligheydt</rhyme>,</l>
        <l id="s1:l15" met="2" type="-+">Die met Godt te <rhyme label="g" type="f">minnen</rhyme>,</l>
        <l id="s1:l16" met="2" type="-+">Van daegh gy kont <rhyme label="g" type="f" corresp="#s1:l15">winnen</rhyme></l>
        <l id="s1:l17" met="2" type="-+">Voor <rhyme label="f" type="m" corresp="#s1:l13">eeuwigheydt</rhyme>,</l>
        <l id="s1:l18" met="2" type="-+">Soo gy het <rhyme label="h" type="m">quaedt</rhyme></l>
        <l id="s1:l19" met="2" type="-+">Uyt hert ende <rhyme label="g" type="f" corresp="#s1:l15">sinnen</rhyme></l>
        <l id="s1:l20" met="2" type="-+">Voor syn liefde <rhyme label="h" type="m" corresp="#s1:l18">laet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ick offer u, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Noch eens desen <rhyme label="a" type="m" corresp="#s2:l1">keer</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Myn woorden en <rhyme label="b" type="f">wercken</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Wilt dees <rhyme label="b" type="f" corresp="#s2:l3">verstercken</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Heden tot uw' <rhyme label="a" type="m" corresp="#s2:l1">eer</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">In al myn <rhyme label="c" type="f">gedachten</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Sal ick aen u <rhyme label="c" type="f" corresp="#s2:l6">trachten</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Te behaegen <rhyme label="a" type="m" corresp="#s2:l1">meer</rhyme>.</l>
        <l id="s2:l9" met="2" type="-+">De sonden ick <rhyme label="d" type="m">sal</rhyme></l>
        <l id="s2:l10" met="2" type="-+">Van daegh meer <rhyme label="e" type="f">vervloecken</rhyme>,</l>
        <l id="s2:l11" met="2" type="+-">Alleen sal ick <rhyme label="e" type="f" corresp="#s2:l10">soecken</rhyme></l>
        <l id="s2:l12" met="2" type="-+">U, Godt, mynen <rhyme label="d" type="m" corresp="#s2:l9">al</rhyme>:</l>
        <l id="s2:l13" met="2" type="-+">Verlaet my doch <rhyme label="f" type="m">niet</rhyme>,</l>
        <l id="s2:l14" met="2" type="-+">Die gy bidden <rhyme label="f" type="m" corresp="#s2:l13">siet</rhyme>,</l>
        <l id="s2:l15" met="2" type="-+">Dat gy hulp wildt <rhyme label="g" type="f">geven</rhyme>,</l>
        <l id="s2:l16" met="2" type="-+">Om heden te <rhyme label="g" type="f" corresp="#s2:l15">leven</rhyme></l>
        <l id="s2:l17" met="2" type="-+">Gelyck gy <rhyme label="f" type="m" corresp="#s2:l13">gebiedt</rhyme>:</l>
        <l id="s2:l18" met="2" type="-+">Dit neem ick voor <rhyme label="h" type="m">my</rhyme>,</l>
        <l id="s2:l19" met="2" type="-+">Door liefde <rhyme label="g" type="f" corresp="#s2:l15">gedreven</rhyme>:</l>
        <l id="s2:l20" met="2" type="-+">Heere staet my <rhyme label="h" type="m" corresp="#s2:l18">by</rhyme>.</l>
      </lg>
    </lg>
  </text>
