    <melody>Bereid uw huis terstond</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">BEtert, o sondaer <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">V leven, ende <rhyme label="b" type="f">seden</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Terstont, terstont, <rhyme label="a" type="m" corresp="#s1:l1">opstaet</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Niet morghen maer nu <rhyme label="b" type="f" corresp="#s1:l2">heden</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Beydt niet van daegh tot <rhyme label="c" type="m">daegh</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">De doodt naeckt alle <rhyme label="d" type="f">uren</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Gods gramschap komt niet <rhyme label="c" type="m" corresp="#s1:l5">traegh</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Wee! Diese moet <rhyme label="d" type="f" corresp="#s1:l6">besueren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Laet niet ontgaen den <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Den tijdt niet om we'er <rhyme label="b" type="f">halen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maeckt u de sonden <rhyme label="a" type="m" corresp="#s2:l1">quijt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Vw' schulden wilt <rhyme label="b" type="f" corresp="#s2:l2">betalen</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Want als het is te <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dan baet suchten noch <rhyme label="d" type="f">kermen</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">De doot recht henen <rhyme label="c" type="m" corresp="#s2:l5">gaet</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En weet van gheen <rhyme label="d" type="f" corresp="#s2:l6">ontfermen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Houdt voor uw' ziele <rhyme label="a" type="m">wacht</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">Wat rekent ghy veel <rhyme label="b" type="f">jaren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">O dwaes dan desen <rhyme label="a" type="m" corresp="#s3:l1">nacht</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Magh s'uyt u lichaem <rhyme label="b" type="f" corresp="#s3:l2">vaeren</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Hout op houdt op, niet <rhyme label="c" type="m">meer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Wilt sond' op sonden <rhyme label="d" type="f">tassen</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Als een' dief komt den <rhyme label="c" type="m" corresp="#s3:l5">Heer</rhyme>;</l>
        <l id="s3:l8" met="3" type="-+">Wilt op sijn komste <rhyme label="d" type="f" corresp="#s3:l6">passen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Waerom wilt ghy op't <rhyme label="a" type="m">eynt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Vw's levens, eerst wel <rhyme label="b" type="f">leven</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">En voldoen, soo ghy <rhyme label="a" type="m" corresp="#s4:l1">meynt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Voor al u quaet <rhyme label="b" type="f" corresp="#s4:l2">bedreven</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">De sieckt u dan <rhyme label="c" type="m">belet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die't lichaem gheeft gheen <rhyme label="d" type="f">rusten</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Meynt ghy dat u <rhyme label="c" type="m" corresp="#s4:l5">ghebedt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Oft goet doen, dan sal <rhyme label="d" type="f" corresp="#s4:l6">lusten</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Houdt sekerlijck, en <rhyme label="a" type="m">weet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">(Gods oordeel is <rhyme label="b" type="f">rechtveerdigh</rhyme>)</l>
        <l id="s5:l3" met="3" type="-+">Die Godt soo langh <rhyme label="a" type="m" corresp="#s5:l1">vergheet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Is oock verghetens <rhyme label="b" type="f" corresp="#s5:l2">weerdigh</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dus hebt ghy niet <rhyme label="c" type="m">aenveert</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Het goedt als't kost <rhyme label="d" type="f">gheschieden</rhyme>?</l>
        <l id="s5:l7" met="3" type="-+">Als ghy't daer naer <rhyme label="c" type="m" corresp="#s5:l5">begheert</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Mocht dan wel van u <rhyme label="d" type="f" corresp="#s5:l6">vlieden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Siet Iesus staet en <rhyme label="a" type="m">clopt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wilt in ghelaeten <rhyme label="b" type="f">werden</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">V ooren niet en <rhyme label="a" type="m" corresp="#s6:l1">stopt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">V hert laet niet <rhyme label="b" type="f" corresp="#s6:l2">verherden</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Doet op, hy sal <rhyme label="c" type="m">ingaen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En t'savonts met u <rhyme label="d" type="f">eeten</rhyme>?</l>
        <l id="s6:l7" met="3" type="-+">Laet hem niet langher <rhyme label="c" type="m" corresp="#s6:l5">staen</rhyme>;</l>
        <l id="s6:l8" met="3" type="-+">Maer komt hem wil'kom <rhyme label="d" type="f" corresp="#s6:l6">heeten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Seght wil'kom soete <rhyme label="a" type="m">gast</rhyme>:</l>
        <l id="s7:l2" met="3" type="-+">Komt Iesus Heer der <rhyme label="b" type="f">Heeren</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Ick neme voor my <rhyme label="a" type="m" corresp="#s7:l1">vast</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Mijn leven' te <rhyme label="b" type="f" corresp="#s7:l2">bekeeren</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Laet heden, laet nu <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Den laetsten stond der <rhyme label="d" type="f">sonden</rhyme>:</l>
        <l id="s7:l7" met="3" type="-+">Laet my van schult en <rhyme label="c" type="m" corresp="#s7:l5">pijn</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Ten laetsten sijn <rhyme label="d" type="f" corresp="#s7:l6">ontbonden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
