    <melody>Ik lijd in het hart pijn ongewoon</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="1" type="-+">LAet <rhyme label="a" type="m">ons</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met 't hart en lipp' des <rhyme label="a" type="m" corresp="#s1:l1">mondts</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Fanciscum <rhyme label="b" type="f">prijsen</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">En eer <rhyme label="b" type="f" corresp="#s1:l3">bewijzen</rhyme>.</l>
        <l id="s1:l5" met="5" type="-+">Sijn Moeder kan hem niet baren t' <rhyme label="b" type="f" corresp="#s1:l3">Assysen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In haer huys rijck en <rhyme label="c" type="m">moy</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Maer in een stal, op 't <rhyme label="c" type="m" corresp="#s1:l6">stroy</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Op Christus <rhyme label="b" type="f" corresp="#s1:l3">wijzen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="1" type="-+">De <rhyme label="a" type="m">deught</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En Godt acht van sijn <rhyme label="a" type="m" corresp="#s2:l1">jeught</rhyme>.</l>
        <l id="s2:l3" met="2" type="-+">Hy wordt <rhyme label="b" type="f">gedreven</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Tot 't Coopmans <rhyme label="b" type="f" corresp="#s2:l3">leven</rhyme>.</l>
        <l id="s2:l5" met="5" type="-+">Sijn Vader heeft hem voor d' Bisschop <rhyme label="b" type="f" corresp="#s2:l3">bekeven</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Want tegen 't Coopmans <rhyme label="c" type="m">gilt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Heeft Laken, en Gelt <rhyme label="c" type="m" corresp="#s2:l6">milt</rhyme></l>
        <l id="s2:l8" met="2" type="-+">d'Armen <rhyme label="b" type="f" corresp="#s2:l3">gegeven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="1" type="-+">Als <rhyme label="a" type="m">hy</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Staet aen sijn Vaders <rhyme label="a" type="m" corresp="#s3:l1">zy</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Geeft hem sijn <rhyme label="b" type="f">kleden</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Al 't erf-goedt <rhyme label="b" type="f" corresp="#s3:l3">mede</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">Sprack 'k heb u mijn Vader ghenoemt tot <rhyme label="b" type="f" corresp="#s3:l3">heden</rhyme></l>
        <l id="s3:l6" met="3" type="-+">'k Roep van alles <rhyme label="c" type="m">bevrijt</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Onsen Vader die <rhyme label="c" type="m" corresp="#s3:l6">zijt</rhyme></l>
        <l id="s3:l8" met="2" type="-+">In 's Hemels <rhyme label="b" type="f" corresp="#s3:l3">steden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="1" type="-+">Sijn <rhyme label="a" type="m">goedt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Seydt adieu met sijn <rhyme label="a" type="m" corresp="#s4:l1">bloedt</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">En 's wereldts <rhyme label="b" type="f">koorden</rhyme>.</l>
        <l id="s4:l4" met="2" type="-+">Uyt Christus <rhyme label="b" type="f" corresp="#s4:l3">hoorde</rhyme>:</l>
        <l id="s4:l5" met="5" type="-+">d' Regel van sijn Euangelische <rhyme label="b" type="f" corresp="#s4:l3">oorden</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Hy neemt Soldaten <rhyme label="c" type="m">aen</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">De wereldt ront om <rhyme label="c" type="m" corresp="#s4:l6">gaen</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Preken Goods <rhyme label="b" type="f" corresp="#s4:l3">woorden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="1" type="-+">Hy <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">d' Armoede acht als <rhyme label="a" type="m" corresp="#s5:l1">eer</rhyme>.</l>
        <l id="s5:l3" met="2" type="-+">d'Eyge wil <rhyme label="b" type="f">bande</rhyme>.</l>
        <l id="s5:l4" met="2" type="-+">In liefde <rhyme label="b" type="f" corresp="#s5:l3">brande</rhyme>.</l>
        <l id="s5:l5" met="5" type="-+">Met sijn Minder-broeders bekeert veel <rhyme label="b" type="f" corresp="#s5:l3">landen</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Goods huys van valle <rhyme label="c" type="m">stut</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">Goods groote gramschap <rhyme label="c" type="m" corresp="#s5:l6">schut</rhyme>.</l>
        <l id="s5:l8" met="2" type="-+">Bint Satans <rhyme label="b" type="f" corresp="#s5:l3">handen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="1" type="-+">Wordt <rhyme label="a" type="m">rijck</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Van wijsheydt <rhyme label="a" type="m" corresp="#s6:l1">Goddelijck</rhyme>;</l>
        <l id="s6:l3" met="2" type="-+">Hy diende <rhyme label="b" type="f">garen</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Die Melaets <rhyme label="b" type="f" corresp="#s6:l3">waren</rhyme>.</l>
        <l id="s6:l5" met="5" type="-+">Reyst en preeckt om de kroon der <rhyme label="b" type="f" corresp="#s6:l3">Martelaren</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Dees Godes Kercx <rhyme label="c" type="m">Pylaer</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Is eenen spiegel <rhyme label="c" type="m" corresp="#s6:l6">klaer</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Voor al Goods <rhyme label="b" type="f" corresp="#s6:l3">scharen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="1" type="-+">Met <rhyme label="a" type="m">as</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Sijne spijs vervult <rhyme label="a" type="m" corresp="#s7:l1">was</rhyme>.</l>
        <l id="s7:l3" met="2" type="-+">'t Kranck volck <rhyme label="b" type="f">verblijde</rhyme>;</l>
        <l id="s7:l4" met="2" type="-+">De Vrouwe <rhyme label="b" type="f" corresp="#s7:l3">mijde</rhyme>.</l>
        <l id="s7:l5" met="5" type="-+">'t Vleesch rebel verwint, door 't sneeuw, en <rhyme label="b" type="f" corresp="#s7:l3">castijde</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Sijn hart geen aerde <rhyme label="c" type="m">raeckt</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Godt hem alleen soet <rhyme label="c" type="m" corresp="#s7:l6">smaeckt</rhyme>;</l>
        <l id="s7:l8" met="2" type="-+">Geeft Godt sijn <rhyme label="b" type="f" corresp="#s7:l3">tijden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="1" type="-+">Sijn <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s8:l2" met="3" type="-+">heeft een Seraphin <rhyme label="a" type="m" corresp="#s8:l1">ne'er</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Tot hem <rhyme label="b" type="f">gesonden</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Die druckt <rhyme label="b" type="f" corresp="#s8:l3">terstonden</rhyme></l>
        <l id="s8:l5" met="5" type="-+">In sijn zijde, voeten, handen vijf <rhyme label="b" type="f" corresp="#s8:l3">wonden</rhyme>.</l>
        <l id="s8:l6" met="3" type="-+">Met Christus heeft veel <rhyme label="c" type="m">re'en</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Hy leeft van sijn <rhyme label="c" type="m" corresp="#s8:l6">gebe'en</rhyme>.</l>
        <l id="s8:l8" met="2" type="-+">Schout al die <rhyme label="b" type="f" corresp="#s8:l3">sonden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="1" type="-+">De <rhyme label="a" type="m">visch</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En 't vee Sinte <rhyme label="a" type="m" corresp="#s9:l1">Francis</rhyme></l>
        <l id="s9:l3" met="2" type="-+">Sonder <rhyme label="b" type="f">verschoonen</rhyme></l>
        <l id="s9:l4" met="2" type="-+">G'hoorsaemheyt <rhyme label="b" type="f" corresp="#s9:l3">thoonen</rhyme>.</l>
        <l id="s9:l5" met="5" type="-+">Tongh noch pen sijn hoogheydt in 's Hemels <rhyme label="b" type="f" corresp="#s9:l3">throonen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Deughden, noch tekens <rhyme label="c" type="m">al</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Heeft verhaelt, of doen <rhyme label="c" type="m" corresp="#s9:l6">sal</rhyme>,</l>
        <l id="s9:l8" met="2" type="-+">Noch glans der <rhyme label="b" type="f" corresp="#s9:l3">Kroonen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
