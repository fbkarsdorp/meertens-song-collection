    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Als ik zie het heiloos <rhyme label="a" type="f">leeven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En 't oneerlyk <rhyme label="b" type="m">tydverdryf</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat u Ondeugd komt te <rhyme label="a" type="f" corresp="#s1:l1">geeven</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Beeft, beeft myn hart van schrik in 't <rhyme label="b" type="m" corresp="#s1:l2">lyf</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Ondeugd zo mismaakt van <rhyme label="c" type="f">léden</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Is, helaas! uw <rhyme label="d" type="m">huuw-lyks-pand</rhyme>;</l>
        <l id="s1:l7" met="4" type="+-">Deugd verfoeit uw lósse <rhyme label="c" type="f" corresp="#s1:l5">zéden</rhyme>,</l>
        <l id="s1:l8" met="6" type="-+">En Verstand, en Verstand uw <rhyme label="d" type="m" corresp="#s1:l6">onverstand</rhyme>.</l>
      </lg>
