  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">BARBARA! Goods groot' <rhyme label="a" type="f">vrindinne</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ick recht op mijn hart en <rhyme label="b" type="m">ziel</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Oogh en mond, jae all' mijn <rhyme label="a" type="f" corresp="#s1:l1">sinnen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">T' uwer eer, voor wien ick <rhyme label="b" type="m" corresp="#s1:l2">kniel</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s1:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s1:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Barbara! Ghy zijt <rhyme label="a" type="f">gebooren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Uyt een Vorstelijck <rhyme label="b" type="m">geslacht</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Barb'ra! Ghy zijt op den <rhyme label="a" type="f" corresp="#s2:l1">tooren</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Van uw's Vaders hand <rhyme label="b" type="m" corresp="#s2:l2">gebracht</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s2:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s2:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Barbara! Ghy eertijds <rhyme label="a" type="f">bouwden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Veynsters drie in 't <rhyme label="b" type="m">tooren-huys</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Ghy U gantsch en vast <rhyme label="a" type="f" corresp="#s3:l1">betrouwden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Op den Heer, en op sijn <rhyme label="b" type="m" corresp="#s3:l2">Kruys</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s3:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s3:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ghy daer door te kennen <rhyme label="a" type="f">geven</rhyme></l>
        <l id="s4:l2" met="4" type="+-">(Barb'ra!) wilden datter <rhyme label="b" type="m">was</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Een Drievuldich God in 't <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dit beduyden 't darde <rhyme label="b" type="m" corresp="#s4:l2">glas</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s4:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s4:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Barbara! Ghy zijt <rhyme label="a" type="f">geslagen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Van Dioscorns <rhyme label="b" type="m">geweest</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Maer Ghy hebt die spijt <rhyme label="a" type="f" corresp="#s5:l1">verdragen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ghy waert nergens voor <rhyme label="b" type="m" corresp="#s5:l2">bevreest</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s5:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s5:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Barb'ra! Ghy had niet te <rhyme label="a" type="f">sorgen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Voor uw' Vaders <rhyme label="b" type="m">toornigheyd</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Want U heeft een steen <rhyme label="a" type="f" corresp="#s6:l1">verborgen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En uyt sijn gesicht <rhyme label="b" type="m" corresp="#s6:l2">geleydt</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s6:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s6:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Barb'ra! Ghy zijt we'er <rhyme label="a" type="f">gevonden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Door 't verraedt van eene <rhyme label="b" type="m">man</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Die 't Mirakel op dier <rhyme label="a" type="f" corresp="#s7:l1">stonden</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Had gesien met oogen <rhyme label="b" type="m" corresp="#s7:l2">an</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s7:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s7:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Toen heeft uwen boosen <rhyme label="a" type="f">vader</rhyme></l>
        <l id="s8:l2" met="4" type="+-">U doen brengen op de <rhyme label="b" type="m">poort</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">U dee gees'len dien <rhyme label="a" type="f" corresp="#s8:l1">verrader</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Maer Ghy nimmer moed <rhyme label="b" type="m" corresp="#s8:l2">verloort</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s8:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s8:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Uwe borsten zijn <rhyme label="a" type="f">genepen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Van u lichaem met een <rhyme label="b" type="m">tangh</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Daer op smaeckten swacke <rhyme label="a" type="f" corresp="#s9:l1">sweepen</rhyme>:</l>
        <l id="s9:l4" met="4" type="+-">Maer all' dit viel U niet <rhyme label="b" type="m" corresp="#s9:l2">bangh</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s9:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s9:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Ghy zijt moeder-naeckt <rhyme label="a" type="f">getreden</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Langhs de straten na 't <rhyme label="b" type="m">Schavot</rhyme>:</l>
        <l id="s10:l3" met="4" type="+-">Hoe hebt Ghy toen, Maeght! <rhyme label="a" type="f" corresp="#s10:l1">gebeden</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Met die leden uwen <rhyme label="b" type="m" corresp="#s10:l2">God</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s10:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s10:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Uwen Vader kon niet <rhyme label="a" type="f">wachten</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Hy heeft selver U <rhyme label="b" type="m">onthooft</rhyme>:</l>
        <l id="s11:l3" met="4" type="+-">Maer den kender der <rhyme label="a" type="f" corresp="#s11:l1">gedachten</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Heeft oock hem van ziel <rhyme label="b" type="m" corresp="#s11:l2">berooft</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">BARBARA! op 's le-vens <rhyme label="c" type="m">end</rhyme></l>
        <l id="s11:l6" met="4" type="+-">My be-sorght het <rhyme label="c" type="m" corresp="#s11:l5">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Want siet-aen, siet-aen een <rhyme label="a" type="f">wonder</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Aen uw' Va'er, die was soo <rhyme label="b" type="m">fel</rhyme>;</l>
        <l id="s12:l3" met="4" type="+-">God hem ne'ersloegh met een <rhyme label="a" type="f" corresp="#s12:l1">donder</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">En Hy worp hem in de <rhyme label="b" type="m" corresp="#s12:l2">hell'</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Barbara! op 's levens <rhyme label="c" type="m">end</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">My besorght het <rhyme label="c" type="m" corresp="#s12:l5">Sacrament</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
