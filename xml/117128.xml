  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Heere Godt! uw zwaare <rhyme label="a" type="f">plagen</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Die wy <rhyme label="a" type="f" corresp="#s1:l1">dragen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Treffen ons zoo diep in ’t <rhyme label="b" type="m">hert</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Zal dan noch die felle <rhyme label="c" type="f">roede</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Langer <rhyme label="c" type="f" corresp="#s1:l4">woeden</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En ons brengen smert op <rhyme label="b" type="m" corresp="#s1:l3">smert</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Met u scherpe <rhyme label="a" type="f">toorne-schichten</rhyme>:</l>
        <l id="s2:l2" met="2" type="+-">Komt gy <rhyme label="a" type="f" corresp="#s2:l1">richten</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Onze zond: wie kan <rhyme label="b" type="m">bestaan</rhyme>!</l>
        <l id="s2:l4" met="4" type="+-">Voor u doodelijke <rhyme label="c" type="f">pijlen</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Die daar <rhyme label="c" type="f" corresp="#s2:l4">ylen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Om zoo vele te <rhyme label="b" type="m" corresp="#s2:l3">verslaan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Huys! aan Huys! weet vast <rhyme label="a" type="f">geslagen</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Alle <rhyme label="a" type="f" corresp="#s3:l1">dagen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Gaat dien slaanden Engel <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Met te quetzen worgen <rhyme label="c" type="f">dooden</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Ach wat <rhyme label="c" type="f" corresp="#s3:l4">nooden</rhyme>!</l>
        <l id="s3:l6" met="4" type="+-">Waarmen ziet en waarmen <rhyme label="b" type="m" corresp="#s3:l3">hoort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Waar wy keeren waar wy <rhyme label="a" type="f">wenden</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">’t Zijn <rhyme label="a" type="f" corresp="#s4:l1">elenden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Over smert benautheit <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Hoortmen kermen klagen <rhyme label="c" type="f">steenen</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Bitter <rhyme label="c" type="f" corresp="#s4:l4">weenen</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">Wie kan ongevoelig <rhyme label="b" type="m" corresp="#s4:l3">zijn</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Bange koortzen, bloeden, <rhyme label="a" type="f">braken</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">’t Stadig <rhyme label="a" type="f" corresp="#s5:l1">waken</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Breeken alle moedt en <rhyme label="b" type="m">kracht</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Etterbuilen, booze <rhyme label="c" type="f">zweeren</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Vuile <rhyme label="c" type="f" corresp="#s5:l4">zeeren</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Zijn de stoffe van de <rhyme label="b" type="m" corresp="#s5:l3">klacht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">d’Eene zal onrustig <rhyme label="a" type="f">woelen</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Door ’t <rhyme label="a" type="f" corresp="#s6:l1">gevoelen</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Van benauwtheit om het <rhyme label="b" type="m">hert</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">’t Ingewant wort hem <rhyme label="c" type="f">doorsneden</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">En de <rhyme label="c" type="f" corresp="#s6:l4">leden</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Zijn verbrijsselt door de <rhyme label="b" type="m" corresp="#s6:l3">smert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Mocht ik eens de brandt <rhyme label="a" type="f">verkoelen</rhyme>!</l>
        <l id="s7:l2" met="2" type="+-">Dien ik <rhyme label="a" type="f" corresp="#s7:l1">voele</rhyme></l>
        <l id="s7:l3" met="4" type="+-">(Roept de kranke) in mijn <rhyme label="b" type="m">borst</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Kander niets mijn hert <rhyme label="c" type="f">verquikken</rhyme>!</l>
        <l id="s7:l5" met="2" type="+-">’k Moet <rhyme label="c" type="f" corresp="#s7:l4">verstikken</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">‘k Moet versmachten van den <rhyme label="b" type="m" corresp="#s7:l3">Dorst</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">d’Ander leyt geduurig <rhyme label="a" type="f">Raazen</rhyme></l>
        <l id="s8:l2" met="2" type="+-">Als de <rhyme label="a" type="f" corresp="#s8:l1">dwaazen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Nu ‘t verstant en reden <rhyme label="b" type="m">dwaalt</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Of ook zoo in slaap <rhyme label="c" type="f">gezonken</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Als <rhyme label="c" type="f" corresp="#s8:l4">verdronken</rhyme>.</l>
        <l id="s8:l6" met="4" type="+-">Wordt de kranke weg <rhyme label="b" type="m" corresp="#s8:l3">gehaalt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">De Bekenden Vrienden <rhyme label="a" type="f">Magen</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Zien de <rhyme label="a" type="f" corresp="#s9:l1">plagen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Die van verre blijven <rhyme label="b" type="m">staan</rhyme>.</l>
        <l id="s9:l4" met="4" type="+-">Als zich menschen van ons <rhyme label="c" type="f">keeren</rhyme>;</l>
        <l id="s9:l5" met="2" type="+-">Blijft dan <rhyme label="c" type="f" corresp="#s9:l4">Heere</rhyme>!</l>
        <l id="s9:l6" met="4" type="+-">By ons, neemt u onzer <rhyme label="b" type="m" corresp="#s9:l3">aan</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Ach! hoe veele gaander <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Die <rhyme label="a" type="f" corresp="#s10:l1">verderven</rhyme></l>
        <l id="s10:l3" met="4" type="+-">In haar zonden, zonder <rhyme label="b" type="m">Boet</rhyme>:</l>
        <l id="s10:l4" met="4" type="+-">Haastig doet de Doodt haar ’t <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s10:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s10:l4">Overgeven</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Zonder een bereydt <rhyme label="b" type="m" corresp="#s10:l3">gemoet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Veel bedroefde Weezen <rhyme label="a" type="f">klagen</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">Die deez’ <rhyme label="a" type="f" corresp="#s11:l1">dagen</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Van haar Ouders zijn <rhyme label="b" type="m">ontbloot</rhyme>.</l>
        <l id="s11:l4" met="4" type="+-">De verlaatne droeve <rhyme label="c" type="f">Weeuwen</rhyme></l>
        <l id="s11:l5" met="2" type="+-">Klagen <rhyme label="c" type="f" corresp="#s11:l4">schreeuwen</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Om ’t verlies haars <rhyme label="b" type="m" corresp="#s11:l3">echtgenoodt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Mannen! die als Hemels <rhyme label="a" type="f">lichten</rhyme>!</l>
        <l id="s12:l2" met="2" type="+-">Andre <rhyme label="a" type="f" corresp="#s12:l1">suchten</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Worden schielijk weg <rhyme label="b" type="m">gerukt</rhyme>.</l>
        <l id="s12:l4" met="4" type="+-">Neffens boozen, worden <rhyme label="c" type="f">vromen</rhyme></l>
        <l id="s12:l5" met="2" type="+-">Ons <rhyme label="c" type="f" corresp="#s12:l4">ontnomen</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Welker doodt ons ’t herte <rhyme label="b" type="m" corresp="#s12:l3">drukt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Godt schiet mer vergifte <rhyme label="a" type="f">pijlen</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">Ach de <rhyme label="a" type="f" corresp="#s13:l1">Bijle</rhyme>!</l>
        <l id="s13:l3" met="4" type="+-">Is tot kappen <rhyme label="b" type="m">toegestelt</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Boomen die geen vruchten <rhyme label="c" type="f">dragen</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-">Door de <rhyme label="c" type="f" corresp="#s13:l4">plagen</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Worden neer ten vuur <rhyme label="b" type="m" corresp="#s13:l3">gevelt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Heere! dus in toorn <rhyme label="a" type="f">ontsteeken</rhyme>,</l>
        <l id="s14:l2" met="2" type="+-">Om te <rhyme label="a" type="f" corresp="#s14:l1">wreeken</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Al het quaat van ons <rhyme label="b" type="m">begaan</rhyme>;</l>
        <l id="s14:l4" met="4" type="+-">Ach! wy roepen om <rhyme label="c" type="f">genade</rhyme>,</l>
        <l id="s14:l5" met="2" type="+-">Weert die <rhyme label="c" type="f" corresp="#s14:l4">quaaden</rhyme></l>
        <l id="s14:l6" met="4" type="+-">Helpt ons eer wy gants <rhyme label="b" type="m" corresp="#s14:l3">vergaan</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Wy bekennen ’t zijn de <rhyme label="a" type="f">zonden</rhyme></l>
        <l id="s15:l2" met="2" type="+-">Die ons <rhyme label="a" type="f" corresp="#s15:l1">wonden</rhyme></l>
        <l id="s15:l3" met="4" type="+-">Die verdienen deze <rhyme label="b" type="m">straf</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Vader! wilt ons doch <rhyme label="c" type="f">vergeven</rhyme>,</l>
        <l id="s15:l5" met="2" type="+-">Laat ons <rhyme label="c" type="f" corresp="#s15:l4">leven</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Keert doch uwen Tooren <rhyme label="b" type="m" corresp="#s15:l3">af</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Van uw padt, zijn wy <rhyme label="a" type="f">geweken</rhyme></l>
        <l id="s16:l2" met="2" type="+-">Tot <rhyme label="a" type="f" corresp="#s16:l1">ghebreeken</rhyme>;</l>
        <l id="s16:l3" met="4" type="+-">Zorgeloos is ons <rhyme label="b" type="m">gemoedt</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Tot verkeerde zonden <rhyme label="c" type="f">wegen</rhyme></l>
        <l id="s16:l5" met="2" type="+-">Gantz <rhyme label="c" type="f" corresp="#s16:l4">genegen</rhyme>,</l>
        <l id="s16:l6" met="4" type="+-">Traag en laauw tot ‘t waare <rhyme label="b" type="m" corresp="#s16:l3">goedt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">d’Aerde steelt ons hert en <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s17:l2" met="2" type="+-">Wy <rhyme label="a" type="f" corresp="#s17:l1">beminnen</rhyme></l>
        <l id="s17:l3" met="4" type="+-">’s Weerelts lust: Iaa <rhyme label="b" type="m">ydelheit</rhyme></l>
        <l id="s17:l4" met="4" type="+-">Kan ons herte beter <rhyme label="c" type="f">smaken</rhyme>,</l>
        <l id="s17:l5" met="2" type="+-">Meer <rhyme label="c" type="f" corresp="#s17:l4">vermaken</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">Dan ’t geen ons naa boven <rhyme label="b" type="m" corresp="#s17:l3">leidt</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Uwen Naam, en rust-dag <rhyme label="a" type="f">Heere</rhyme>!</l>
        <l id="s18:l2" met="2" type="+-">Wy <rhyme label="a" type="f" corresp="#s18:l1">onteeren</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">’t Heylig Woordt wordt kleyn <rhyme label="b" type="m">geacht</rhyme>.</l>
        <l id="s18:l4" met="4" type="+-">Onze trotze stijve <rhyme label="c" type="f">herten</rhyme>,</l>
        <l id="s18:l5" met="2" type="+-">Die u <rhyme label="c" type="f" corresp="#s18:l4">terten</rhyme>,</l>
        <l id="s18:l6" met="4" type="+-">Worden door geen slagen <rhyme label="b" type="m" corresp="#s18:l3">zacht</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Hoog van moedt en hart van <rhyme label="a" type="f">nekke</rhyme></l>
        <l id="s19:l2" met="2" type="+-">Niet te <rhyme label="a" type="f" corresp="#s19:l1">trekken</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">Door uw goedtheyt, noch door <rhyme label="b" type="m">straf</rhyme>.</l>
        <l id="s19:l4" met="4" type="+-">Boos, ondankbaar voor uw <rhyme label="c" type="f">zeegen</rhyme>,</l>
        <l id="s19:l5" met="2" type="+-">Steeds <rhyme label="c" type="f" corresp="#s19:l4">geneegen</rhyme></l>
        <l id="s19:l6" met="4" type="+-">Zij wy, om te wijken <rhyme label="b" type="m" corresp="#s19:l3">af</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Geldzucht <rhyme label="a" type="f">ongerechtigheden</rhyme>,</l>
        <l id="s20:l2" met="2" type="+-">Quade <rhyme label="a" type="f" corresp="#s20:l1">Zeden</rhyme>,</l>
        <l id="s20:l3" met="4" type="+-">Overdaadt en <rhyme label="b" type="m">dertelheyt</rhyme>.</l>
        <l id="s20:l4" met="4" type="+-">Haat en nijdt in bittre <rhyme label="c" type="f">twisten</rhyme>,</l>
        <l id="s20:l5" met="2" type="+-">Booze <rhyme label="c" type="f" corresp="#s20:l4">listen</rhyme>,</l>
        <l id="s20:l6" met="4" type="+-">Daarmen met verleydt en <rhyme label="b" type="m" corresp="#s20:l3">vleyt</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Waare deugd en ’t heylig <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s21:l2" met="2" type="+-">Zijn <rhyme label="a" type="f" corresp="#s21:l1">verdreven</rhyme>,</l>
        <l id="s21:l3" met="4" type="+-">Daar is niet dan woordt en <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s21:l4" met="4" type="+-">Christnen zijnder veel in <rhyme label="c" type="f">Name</rhyme>,</l>
        <l id="s21:l5" met="2" type="+-">Maar zy <rhyme label="c" type="f" corresp="#s21:l4">schamen</rhyme></l>
        <l id="s21:l6" met="4" type="+-">Haar de kracht, en waare <rhyme label="b" type="m" corresp="#s21:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Heer! wy vallen voor u <rhyme label="a" type="f">neder</rhyme>,</l>
        <l id="s22:l2" met="2" type="+-">Keert doch <rhyme label="a" type="f" corresp="#s22:l1">weder</rhyme></l>
        <l id="s22:l3" met="4" type="+-">Met u gunst, en weert het <rhyme label="b" type="m">wee</rhyme>.</l>
        <l id="s22:l4" met="4" type="+-">Dat uw wraak-zwaerdt <rhyme label="c" type="f">uytgetoogen</rhyme></l>
        <l id="s22:l5" met="2" type="+-">Niet meer <rhyme label="c" type="f" corresp="#s22:l4">moge</rhyme></l>
        <l id="s22:l6" met="4" type="+-">Slaan: maar steektet in de <rhyme label="b" type="m" corresp="#s22:l3">schee</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="+-">Iezus! maakt voor ons <rhyme label="a" type="f">verzoening</rhyme>,</l>
        <l id="s23:l2" met="2" type="+-">Uw <rhyme label="a" type="f" corresp="#s23:l1">voldoening</rhyme></l>
        <l id="s23:l3" met="4" type="+-">Maak’ ons van Gods Toren <rhyme label="b" type="m">vry</rhyme>;</l>
        <l id="s23:l4" met="4" type="+-">Komt nu voor den Vader <rhyme label="c" type="f">treeden</rhyme></l>
        <l id="s23:l5" met="2" type="+-">Met <rhyme label="c" type="f" corresp="#s23:l4">gebeeden</rhyme>,</l>
        <l id="s23:l6" met="4" type="+-">Dat hy ons genadig <rhyme label="b" type="m" corresp="#s23:l3">zy</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="+-">Op datwy ons tot uw <rhyme label="a" type="f">keeren</rhyme>;</l>
        <l id="s24:l2" met="2" type="+-">Stort ô <rhyme label="a" type="f" corresp="#s24:l1">Heere</rhyme>!</l>
        <l id="s24:l3" met="4" type="+-">Uwen Geest (in ons <rhyme label="b" type="m">gemoedt</rhyme>)</l>
        <l id="s24:l4" met="4" type="+-">Van genaade en <rhyme label="c" type="f">Gebeden</rhyme>,</l>
        <l id="s24:l5" met="2" type="+-">Doet ons <rhyme label="c" type="f" corresp="#s24:l4">treden</rhyme></l>
        <l id="s24:l6" met="4" type="+-">In den weg van waare <rhyme label="b" type="m" corresp="#s24:l3">Boet</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="+-">Dan verlaaten wy de <rhyme label="a" type="f">quade</rhyme></l>
        <l id="s25:l2" met="2" type="+-">Zonden <rhyme label="a" type="f" corresp="#s25:l1">paden</rhyme>,</l>
        <l id="s25:l3" met="4" type="+-">En wy zullen t’uwer <rhyme label="b" type="m">eer</rhyme></l>
        <l id="s25:l4" met="4" type="+-">Ons geheelijk <rhyme label="c" type="f">overgeven</rhyme></l>
        <l id="s25:l5" met="2" type="+-">Om te <rhyme label="c" type="f" corresp="#s25:l4">leven</rhyme>,</l>
        <l id="s25:l6" met="4" type="+-">Tot u wil en dienst ô <rhyme label="b" type="m" corresp="#s25:l3">Heer</rhyme>!</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="+-">Uwe Leeraars en <rhyme label="a" type="f">Dienaaren</rhyme>,</l>
        <l id="s26:l2" met="2" type="+-">Wilt <rhyme label="a" type="f" corresp="#s26:l1">bewaaren</rhyme>,</l>
        <l id="s26:l3" met="4" type="+-">Die nu in de scheure <rhyme label="b" type="m">staan</rhyme>:</l>
        <l id="s26:l4" met="4" type="+-">Die met troost de kranken <rhyme label="c" type="f">stichten</rhyme></l>
        <l id="s26:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s26:l4">berichten</rhyme></l>
        <l id="s26:l6" met="4" type="+-">Door het Kruis tot Gods te <rhyme label="b" type="m" corresp="#s26:l3">gaan</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="+-">Wilt ons in genaa <rhyme label="a" type="f">behoeden</rhyme></l>
        <l id="s27:l2" met="2" type="+-">Voor die <rhyme label="a" type="f" corresp="#s27:l1">Roede</rhyme>,</l>
        <l id="s27:l3" met="4" type="+-">Weert die plage van ons <rhyme label="b" type="m">Huis</rhyme>.</l>
        <l id="s27:l4" met="4" type="+-">Of zoo gy die Heer! doet <rhyme label="c" type="f">naken</rhyme></l>
        <l id="s27:l5" met="2" type="+-">Ons te <rhyme label="c" type="f" corresp="#s27:l4">raken</rhyme>,</l>
        <l id="s27:l6" met="4" type="+-">Troost en helpt ons in dit <rhyme label="b" type="m" corresp="#s27:l3">kruis</rhyme>.</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="4" type="+-">Laat ons al in tijdts <rhyme label="a" type="f">bereyden</rhyme>,</l>
        <l id="s28:l2" met="2" type="+-">Eer wy <rhyme label="a" type="f" corresp="#s28:l1">scheyden</rhyme></l>
        <l id="s28:l3" met="4" type="+-">Uit die brosse aerde <rhyme label="b" type="m">tent</rhyme>:</l>
        <l id="s28:l4" met="4" type="+-">Neemt de Ziele uyt de <rhyme label="c" type="f">banden</rhyme>,</l>
        <l id="s28:l5" met="2" type="+-">In uw <rhyme label="c" type="f" corresp="#s28:l4">handen</rhyme>.</l>
        <l id="s28:l6" met="4" type="+-">Heere! geeft een zalig <rhyme label="b" type="m" corresp="#s28:l3">endt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
