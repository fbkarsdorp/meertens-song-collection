  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">T'Schoonste Nimphie dat hier <rhyme label="a" type="m">beneen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Oyt des Hemels claerheyt <rhyme label="a" type="m" corresp="#s1:l1">bescheen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Weyghert de soete suyvre <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">In haer Hartghen te laten <rhyme label="b" type="m" corresp="#s1:l3">in</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer indiense te recht <rhyme label="a" type="m">verstont</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hoe dat haer Hardertgen is <rhyme label="a" type="m" corresp="#s2:l1">ghewont</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">K'wedse wel haest sou met een <rhyme label="b" type="m">soen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">T'krancke Hardertgen bystant <rhyme label="b" type="m" corresp="#s2:l3">doen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer dan sijnder soo veel <rhyme label="a" type="m">misschien</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Datse de trouste niet can <rhyme label="a" type="m" corresp="#s3:l1">sien</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dan tusschen d'een en d'ander <rhyme label="b" type="m">leyt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Een groot mercklijck <rhyme label="b" type="m" corresp="#s3:l3">onderscheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dus o Nimphien kiest eens met <rhyme label="a" type="m">reen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Uyt soo veel hondert Herders <rhyme label="a" type="m" corresp="#s4:l1">een</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat ghy u jonghe beste <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Niet met segghen maer doen <rhyme label="b" type="m" corresp="#s4:l3">verslijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wilt ghy dan kiesen uyt liefdens <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Vint ghy gheen trouwer soo ick <rhyme label="a" type="m" corresp="#s5:l1">acht</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Als my, want so ghyt wel <rhyme label="b" type="m">besiet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ick ben u Dienaer al weet ghyt <rhyme label="b" type="m" corresp="#s5:l3">niet</rhyme>.</l>
      </lg>
    </lg>
  </text>
