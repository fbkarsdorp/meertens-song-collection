  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Formeren sal ick <rhyme label="a" type="f">aenraden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Vrienden wilt mijn singhen <rhyme label="b" type="m">verstaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick sal wijsen trappen en <rhyme label="a" type="f" corresp="#s1:l1">graden</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Die opwaerts tot den Hemel <rhyme label="b" type="m" corresp="#s1:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En wilt de zond’ niet <rhyme label="a" type="f">consenteren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hebt ghy ghesondicht, gaet niet <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En laet het quaet niet <rhyme label="a" type="f" corresp="#s2:l1">domineren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Staet af, soo leert des Heeren <rhyme label="b" type="m" corresp="#s2:l2">woort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ieuchd’lijck wilt die oorsaken <rhyme label="a" type="f">wijcken</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Waer deur men hier comt tot den <rhyme label="b" type="m">val</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Gaet niet mer Iacobs dochter <rhyme label="a" type="f" corresp="#s3:l1">kijcken</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Naer’t Heydens wesen over <rhyme label="b" type="m" corresp="#s3:l2">al</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Int castijden wilt u <rhyme label="a" type="f">begheven</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Als men u straft verwerpt dat <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">T’is ghesontheyt van’t nieuwe <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Dat nu tot beteringh’ <rhyme label="b" type="m" corresp="#s4:l2">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">T’quaet exempel wilt geensins <rhyme label="a" type="f">loonen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Dat ghy yemandt argheren <rhyme label="b" type="m">soudt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Het soud’ u naemaels qualijck <rhyme label="a" type="f" corresp="#s5:l1">loonen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Het wee comt daer over <rhyme label="b" type="m" corresp="#s5:l2">benout</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gheern’ wilt barmherticheyt <rhyme label="a" type="f">bewijsen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Nu elck eenen nae dat ghy <rhyme label="b" type="m">meucht</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">T’is het werck dat de Heer sal <rhyme label="a" type="f" corresp="#s6:l1">prijsen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Daerom hebt daer in u <rhyme label="b" type="m" corresp="#s6:l2">ghemuecht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En wilt gheen ijdel eere <rhyme label="a" type="f">soecken</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Met Hester weest ootmoedich <rhyme label="b" type="m">doch</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Bewijst u hier in als de <rhyme label="a" type="f" corresp="#s7:l1">cloecken</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En wacht u voor dat valsch <rhyme label="b" type="m" corresp="#s7:l2">bedrocht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Neemt Godt altijt voor uwe <rhyme label="a" type="f">ooghen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Dit vast’lijck in u herte <rhyme label="b" type="m">vaet</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Hoe soudt ghy dan sonfighen <rhyme label="a" type="f" corresp="#s8:l1">moghen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Als de Richter steedts voor u <rhyme label="b" type="m" corresp="#s8:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Peynst altijt dat ghy <rhyme label="a" type="f">d’aldersnoodtste</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Voor al andere Menschen <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Paulus was wel van <rhyme label="a" type="f" corresp="#s9:l1">d’aldergrootste</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Maer hielt hem seer veracht <rhyme label="b" type="m" corresp="#s9:l2">altijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">In wraeck (wat u hier comt te <rhyme label="a" type="f">vooren</rhyme>)</l>
        <l id="s10:l2" met="4" type="-+">En loont niemandt hier quaet met <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Want de wraeck moet Godt <rhyme label="a" type="f" corresp="#s10:l1">toebehooren</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Hy salt vergelden op sijn <rhyme label="b" type="m" corresp="#s10:l2">maet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En wilt liefhebben en <rhyme label="a" type="f">beminnen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Die u haten, t’is Christi <rhyme label="b" type="m">leer</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Ghy wort Gods vriendt, wilt dit <rhyme label="a" type="f" corresp="#s11:l1">versinnen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Sult binnen gaen tot sijner <rhyme label="b" type="m" corresp="#s11:l2">eer</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Toont nu int lijden <rhyme label="a" type="f">overvloedich</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Dat ghy dat minnelijck <rhyme label="b" type="m">ontfanght</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Acht dat voor blijschap, weest <rhyme label="a" type="f" corresp="#s12:l1">lanckmoedich</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Tot dat ghy troost van Godt <rhyme label="b" type="m" corresp="#s12:l2">v’langht</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">En weest neerstich in u <rhyme label="a" type="f">ghebeden</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Versuymtse niet, maer roept Godt <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Int ghemoet wilt soo tot hem <rhyme label="a" type="f" corresp="#s13:l1">treden</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Daer in volherden en <rhyme label="b" type="m" corresp="#s13:l2">bestaen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Recht wilt Godt loven int <rhyme label="a" type="f">begeeren</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Met aendacht in u hert <rhyme label="b" type="m">ontsinckt</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Al moest ghy t’uytspreken <rhyme label="a" type="f" corresp="#s14:l1">ontbeeren</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Met suchten doch aen hem <rhyme label="b" type="m" corresp="#s14:l2">ghedinckt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
