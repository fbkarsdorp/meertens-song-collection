  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Mijn hartge, dat leit <rhyme label="a" type="f">ghevanghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ende doecht so grote <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ende hevet so groet <rhyme label="a" type="f" corresp="#s1:l1">verlanghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Na die Alreliefste <rhyme label="b" type="m" corresp="#s1:l2">mijn</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Ende hevet so groet <rhyme label="a" type="f" corresp="#s1:l1">verlanghen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Na die Alreliefste <rhyme label="b" type="m" corresp="#s1:l2">mijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Com, troest nu, Lief, mijn <rhyme label="a" type="f">hartge</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat om Di leit <rhyme label="b" type="m">ghevaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Mit Dijnre soeter <rhyme label="a" type="f" corresp="#s2:l1">minnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En laets niet van Di <rhyme label="b" type="m" corresp="#s2:l2">gaen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Mit Dijnre soeter <rhyme label="a" type="f" corresp="#s2:l1">minnen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En laets niet van Di <rhyme label="b" type="m" corresp="#s2:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ic bin Di dicke <rhyme label="a" type="f">ontganghen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Daerom so doeghe ic <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maer hout my nu <rhyme label="a" type="f" corresp="#s3:l1">ghevangen</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Ic wil Dijn eyghen <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Maer hout my nu <rhyme label="a" type="f" corresp="#s3:l1">ghevangen</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Ic wil Dijn eyghen <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Met minen vollen <rhyme label="a" type="f">wille</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">So gheve ic my <rhyme label="b" type="m">ghevaen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Met harte ende oec met <rhyme label="a" type="f" corresp="#s4:l1">sinne</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Tot Uwen dienst te <rhyme label="b" type="m" corresp="#s4:l2">staen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Met harte ende oec met <rhyme label="a" type="f" corresp="#s4:l1">sinne</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Tot Uwen dienst te <rhyme label="b" type="m" corresp="#s4:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ic bin nu alle <rhyme label="a" type="f">bereyt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Tot alle dat Ghi <rhyme label="b" type="m">ghebiet</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Maer ist dat Ghi my <rhyme label="a" type="f" corresp="#s5:l1">laet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">So en mach ics volbrenghen <rhyme label="b" type="m" corresp="#s5:l2">niet</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Maer ist dat Ghi my <rhyme label="a" type="f" corresp="#s5:l1">laet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">So en mach ics volbrenghen <rhyme label="b" type="m" corresp="#s5:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ic en mach niet <rhyme label="a" type="f">volbrenghen</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Laetstu my, Here <rhyme label="b" type="m">mijn</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ic lide in mijnre <rhyme label="a" type="f" corresp="#s6:l1">harten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Soe menighe groete <rhyme label="b" type="m" corresp="#s6:l2">pijn</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Ic lide in mijnre <rhyme label="a" type="f" corresp="#s6:l1">harten</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Soe menighe groete <rhyme label="b" type="m" corresp="#s6:l2">pijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dat doet my dicke <rhyme label="a" type="f">ontfruchten</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ende al te droevich <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ende menich swaer <rhyme label="a" type="f" corresp="#s7:l1">versuchten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Al in dat harte <rhyme label="b" type="m" corresp="#s7:l2">mijn</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Ende menich swaer <rhyme label="a" type="f" corresp="#s7:l1">versuchten</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Al in dat harte <rhyme label="b" type="m" corresp="#s7:l2">mijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghi moeghet my wel <rhyme label="a" type="f">ontladen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">O Heer, als Ghijt <rhyme label="b" type="m">ghebiet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ontfanghet my in <rhyme label="a" type="f" corresp="#s8:l1">ghenade</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ende verlicht my mijn <rhyme label="b" type="m" corresp="#s8:l2">verdriet</rhyme>!</l>
        <l id="s8:l5" met="3" type="-+">Ontfanghet my in <rhyme label="a" type="f" corresp="#s8:l1">ghenade</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ende verlicht my mijn <rhyme label="b" type="m" corresp="#s8:l2">verdriet</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O Heer, wilt my <rhyme label="a" type="f">ontfermen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ende troest dat harte <rhyme label="b" type="m">mijn</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Druc my in Dinen <rhyme label="a" type="f" corresp="#s9:l1">armen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Die wide ontloken <rhyme label="b" type="m" corresp="#s9:l2">sijn</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Druc my in Dinen <rhyme label="a" type="f" corresp="#s9:l1">armen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Die wide ontloken <rhyme label="b" type="m" corresp="#s9:l2">sijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
