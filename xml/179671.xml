<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>179671</id>
    <date>
      <year-start>1767</year-start>
      <year-end>1767</year-end>
    </date>
    <tags/>
    <melody>Potafar die zou gaan trouwen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WEl ik moet u wat <rhyme label="a" type="f">verklaren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hoe een Iuffrouw is <rhyme label="a" type="f" corresp="#s1:l1">gevaren</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">En de schoonste al van de <rhyme label="b" type="m">Stad</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die veel Heeren om haer trouwetje <rhyme label="b" type="m" corresp="#s1:l3">had</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En om dat zy was zoo <rhyme label="c" type="f">ryke</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En zy had veel geld en <rhyme label="d" type="m">goed</rhyme></l>
        <l id="s1:l7" met="4" type="+-">En niemant was haers <rhyme label="c" type="f" corresp="#s1:l5">gelyken</rhyme>:</l>
        <l id="s1:l8" met="4" type="+-">Dat dogt zy in haer <rhyme label="d" type="m" corresp="#s1:l6">gemoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dat zy haer niet konden <rhyme label="a" type="f">bekoren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Hebben zy zo een raed <rhyme label="a" type="f" corresp="#s2:l1">beschoren</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En veel heeren al onder <rhyme label="b" type="m">een</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Haer te brengen al in ’t <rhyme label="b" type="m" corresp="#s2:l3">geween</rhyme>!</l>
        <l id="s2:l5" met="4" type="+-">En zy hebben daer <rhyme label="c" type="f">ontboden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Een Schoorsteenveger <rhyme label="d" type="m">blank</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En gekleed al na de <rhyme label="c" type="f" corresp="#s2:l5">moode</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Als de beste heer van ’t <rhyme label="d" type="m" corresp="#s2:l6">Land</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als gy aen hebt deze <rhyme label="a" type="f">kleeren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Sprak daer veel edele <rhyme label="a" type="f" corresp="#s3:l1">heeren</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Met drie knegts agter u <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Spreekt dan deze Iuffrouw <rhyme label="b" type="m" corresp="#s3:l3">aen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En zoo gy haer dan kan <rhyme label="c" type="f">krygen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Uit liefde tot de <rhyme label="d" type="m">Trouw</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Wy zullen wel stille <rhyme label="c" type="f" corresp="#s3:l5">zwygen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Daer is gelds genoeg voor <rhyme label="d" type="m" corresp="#s3:l6">jou</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wel goeden dag myn <rhyme label="a" type="f">Iongvrouwe</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En myn edele schoon <rhyme label="a" type="f" corresp="#s4:l1">karzouwe</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Blyft hier een weinig <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Ik moet u wat vragen <rhyme label="b" type="m" corresp="#s4:l3">gaen</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Wel myn Heer u zoete <rhyme label="c" type="f">woorden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En u oogjes als <rhyme label="d" type="m">kristael</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Die zoude myn wel <rhyme label="c" type="f" corresp="#s4:l5">bekoorden</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">En u schoonheid <rhyme label="d" type="m" corresp="#s4:l6">altemael</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Segt myn Heer bent gy <rhyme label="a" type="f">gekomen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Ik heb u hier nooyt <rhyme label="a" type="f" corresp="#s5:l1">vernomen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Iuffrouw met permissie <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Want ik kom van <rhyme label="b" type="m" corresp="#s5:l3">Rotterdam</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Daer ben ik zoo ryk en <rhyme label="c" type="f">magtig</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En ik heb veel geld en <rhyme label="d" type="m">goed</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">En een hooge staet zeer <rhyme label="c" type="f" corresp="#s5:l5">pragtig</rhyme>;</l>
        <l id="s5:l8" met="4" type="+-">Ik bid u om u Trouwetje <rhyme label="d" type="m" corresp="#s5:l6">zoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wel myn Heer u zoete <rhyme label="a" type="f">woorden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Die scheinen myn te <rhyme label="a" type="f" corresp="#s6:l1">bekoorden</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En daer toe u hooge <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Die veel eer te boven <rhyme label="b" type="m" corresp="#s6:l3">gaet</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">En wou gy die woorden <rhyme label="c" type="f">houwen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Die gy daer tegen myn <rhyme label="d" type="m">spreekt</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Om dan met myn te <rhyme label="c" type="f" corresp="#s6:l5">trouwen</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Myn dunkt gy de spot maer <rhyme label="d" type="m" corresp="#s6:l6">steekt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wel overschoon <rhyme label="a" type="f">Iongvrouwe</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Ik schenk u terstond myn <rhyme label="a" type="f" corresp="#s7:l1">trouwe</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Neemt deze Ring te <rhyme label="b" type="m">pand</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En steekt hem vry aen u <rhyme label="b" type="m" corresp="#s7:l3">hand</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Soo zullen wy zamen <rhyme label="c" type="f">paren</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Door de Liefde tot de <rhyme label="d" type="m">trouw</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">En wy zullen met <rhyme label="c" type="f" corresp="#s7:l5">malkaren</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Leven als Man en <rhyme label="d" type="m" corresp="#s7:l6">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">De Schoorsteenveger die ging <rhyme label="a" type="f">trouwe</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">En men zag de Bruyloft <rhyme label="a" type="f" corresp="#s8:l1">houwe</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">En pronkte gelyk een <rhyme label="b" type="m">kat</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Als hy aen de Tafel <rhyme label="b" type="m" corresp="#s8:l3">zat</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Hy bekeek zyn mooije <rhyme label="c" type="f">kleeren</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">En zyn overschoon <rhyme label="d" type="m">Iuffrouw</rhyme>;</l>
        <l id="s8:l7" met="4" type="+-">Die hy door andere <rhyme label="c" type="f" corresp="#s8:l5">Heeren</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Had gekregen tot zyn <rhyme label="d" type="m" corresp="#s8:l6">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">’s Avonds als hy zou gaen <rhyme label="a" type="f">slapen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Om met Iuffrouw vreugd te <rhyme label="a" type="f" corresp="#s9:l1">rapen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">’s Morgens hy vroeg op <rhyme label="b" type="m">stond</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">En met een laggende <rhyme label="b" type="m" corresp="#s9:l3">mond</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Toen ging hy weer na de <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">En hy trok weer aen zeer <rhyme label="d" type="m">gou</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Syne Schoorsteenvegers <rhyme label="c" type="f" corresp="#s9:l5">kleren</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">En ging weer na zyn <rhyme label="d" type="m" corresp="#s9:l6">Iuffrouw</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Men hoord de Schoorsteenveger <rhyme label="a" type="f">schreeuwen</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Op de straet gelyk een <rhyme label="a" type="f" corresp="#s10:l1">Leeuwe</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">En hy klopte al aen de <rhyme label="b" type="m">deur</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">En de knegt die quam daer <rhyme label="b" type="m" corresp="#s10:l3">veur</rhyme></l>
        <l id="s10:l5" met="4" type="+-">En wat wilde gy hier <rhyme label="c" type="f">hebben</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Segt gy Schoorsteenveger <rhyme label="d" type="m">stout</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Ik moet myn Huisvrouw wat <rhyme label="c" type="f" corresp="#s10:l5">zeggen</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Die ik gisteren heb <rhyme label="d" type="m" corresp="#s10:l6">getrouwt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">En de Iuffrouw stond <rhyme label="a" type="f">verslagen</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">En zy dogt het zyn myn <rhyme label="a" type="f" corresp="#s11:l1">plagen</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">En ik mag slegts zwygen <rhyme label="b" type="m">stil</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Dat het niemand zeggen <rhyme label="b" type="m" corresp="#s11:l3">wil</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">En ik mag hem kopen <rhyme label="c" type="f">kleeren</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Want ik ben daer mee <rhyme label="d" type="m">getrouwt</rhyme>,</l>
        <l id="s11:l7" met="4" type="+-">Op dat hy met andere <rhyme label="c" type="f" corresp="#s11:l5">Heeren</rhyme>,</l>
        <l id="s11:l8" met="4" type="+-">Mee mag gaen in roder <rhyme label="d" type="m" corresp="#s11:l6">goud</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
