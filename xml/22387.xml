  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Met vrede en vruecht gae ick daer <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">En al nae Godes <rhyme label="b" type="f">wille</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghetroost is my mijn hert en <rhyme label="a" type="m" corresp="#s1:l1">sin</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Gherust en <rhyme label="b" type="f" corresp="#s1:l2">stille</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Soo my mijn Godt belouet <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Nu is den doot, my eenen slaep <rhyme label="d" type="f">geworden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dat maeckt Christus Godes Soon <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Die daer is mijn <rhyme label="b" type="f">Salicheyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Den ghy my hier laet sien <rhyme label="a" type="m" corresp="#s2:l1">voorwaer</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Ende <rhyme label="b" type="f" corresp="#s2:l2">bereyt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Door wien wy hier <rhyme label="c" type="m">verweruen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Sonder steruen, een <rhyme label="d" type="f">leuen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ghy maeckt dat hem alt volck hier <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Wt grooter <rhyme label="b" type="f">ghenaden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En tot zijn Rijcke ghy <rhyme label="a" type="m" corresp="#s3:l1">ontbiet</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Alle <rhyme label="b" type="f" corresp="#s3:l2">beladen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Door u heylich dierbaer <rhyme label="c" type="m">woort</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Twelck is ghehoort, op alle <rhyme label="d" type="f">paden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy is dat licht twelck hier <rhyme label="a" type="m">gheschiet</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Voor allen <rhyme label="b" type="f">Heyden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Te lichten die hem kennen <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Sonder <rhyme label="b" type="f" corresp="#s4:l2">afscheyden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Hy is den volcke <rhyme label="c" type="m">Israel</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Sonder ghequel, lof, prijs, en <rhyme label="d" type="f">eere</rhyme>.</l>
      </lg>
    </lg>
  </text>
