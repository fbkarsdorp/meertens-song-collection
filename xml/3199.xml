  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AL wat den Mensche <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe kloeck het is <rhyme label="b" type="m">beleydt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe deftigh <rhyme label="a" type="m" corresp="#s1:l1">dubbel-goedt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hoe treffelijck <rhyme label="b" type="m" corresp="#s1:l2">gheseydt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Om yet tot troost en <rhyme label="c" type="m">leer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Door schaduw', voor te <rhyme label="d" type="f">legghen</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Godts Sone, onsen <rhyme label="c" type="m" corresp="#s1:l5">Heer</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Die kan 't volmaeckter <rhyme label="d" type="f" corresp="#s1:l6">segghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Daer waren (seydt hy) <rhyme label="a" type="m">tien</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ionckvrouwen, alle <rhyme label="b" type="m">gaer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Met Lampen wel <rhyme label="a" type="m" corresp="#s2:l1">voorsien</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Maer niet met <rhyme label="b" type="m" corresp="#s2:l2">Oly-waer</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">De vijve wel <rhyme label="c" type="m">verciert</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als wijse Maeghden <rhyme label="d" type="f">saten</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Met reden <rhyme label="c" type="m" corresp="#s2:l5">ghemaniert</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En Oly in 'er <rhyme label="d" type="f" corresp="#s2:l6">Vaten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De dwase, <rhyme label="a" type="m">onbedocht</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die hebben <rhyme label="b" type="m">niet-met-al</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van Oly mee <rhyme label="a" type="m" corresp="#s3:l1">ghebrocht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En ginghen t'samen <rhyme label="b" type="m" corresp="#s3:l2">al</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Den Bruydegom te <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Om met vercierde <rhyme label="d" type="f">leden</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En met een heusse <rhyme label="c" type="m" corresp="#s3:l5">groet</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Sijn Bruyloft te <rhyme label="d" type="f" corresp="#s3:l6">betreden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Doen nu de Bruygom <rhyme label="a" type="m">wat</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Te langhe heeft <rhyme label="b" type="m">ghebeydt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Zijns' al van slaep <rhyme label="a" type="m" corresp="#s4:l1">ghevat</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En hebben haer <rhyme label="b" type="m" corresp="#s4:l2">gheleydt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Ter sluym: maer in der <rhyme label="c" type="m">nacht</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Werdt luy en stijf <rhyme label="d" type="f">gheroopen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Den Bruygom komt: ter <rhyme label="c" type="m" corresp="#s4:l5">wacht</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Wilt hem te moete <rhyme label="d" type="f" corresp="#s4:l6">loopen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een yder, als <rhyme label="a" type="m">verschrickt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Stondt veerdigh op de <rhyme label="b" type="m">been</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">De wijse wel <rhyme label="a" type="m" corresp="#s5:l1">gheschickt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met Oly, ginghen <rhyme label="b" type="m" corresp="#s5:l2">heen</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">De dwase seyden, <rhyme label="c" type="m">och</rhyme>!</l>
        <l id="s5:l6" met="3" type="-+">Ons Lampen die <rhyme label="d" type="f">verdwijnen</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Gheeft ons wat Oly <rhyme label="c" type="m" corresp="#s5:l5">toch</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Op datse weder <rhyme label="d" type="f" corresp="#s5:l6">schijnen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sy seyden, alsoo <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Op dat ons even <rhyme label="b" type="m">soo</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Het derven niet <rhyme label="a" type="m" corresp="#s6:l1">gheschiedt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wy doen dit al te <rhyme label="b" type="m" corresp="#s6:l2">noo</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Gae vlijtigh in de <rhyme label="c" type="m">Stadt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Met snelle schreeden <rhyme label="d" type="f">loopen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Wilt Oly in u <rhyme label="c" type="m" corresp="#s6:l5">Vat</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Nae u behoeften <rhyme label="d" type="f" corresp="#s6:l6">koopen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Sy hebben 't wel <rhyme label="a" type="m">ghedaen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Maer wijl sy ginghen <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Soo quam de Bruygom <rhyme label="a" type="m" corresp="#s7:l1">aen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En namse, nae sijn <rhyme label="b" type="m" corresp="#s7:l2">woordt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Ter blijde Bruyloft <rhyme label="c" type="m">in</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En heeftse <rhyme label="d" type="f">over-goten</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Met vreuchden, naer 'er <rhyme label="c" type="m" corresp="#s7:l5">sin'</rhyme>:</l>
        <l id="s7:l8" met="3" type="-+">Toen wierdt de deur <rhyme label="d" type="f" corresp="#s7:l6">ghesloten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Toen quamen d'andere <rhyme label="a" type="m">weer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Met roepen en <rhyme label="b" type="m">gheklop</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En seyden, Heere, <rhyme label="a" type="m" corresp="#s8:l1">Heer</rhyme>!</l>
        <l id="s8:l4" met="3" type="-+">Wy bidden, doet ons <rhyme label="b" type="m" corresp="#s8:l2">op</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Hy seyde, wijckt en <rhyme label="c" type="m">vliedt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Wat vordert u <rhyme label="d" type="f">verlanghen</rhyme>?</l>
        <l id="s8:l7" met="3" type="-+">Want ick en kenn' u <rhyme label="c" type="m" corresp="#s8:l5">niet</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Ick wil u niet <rhyme label="d" type="f" corresp="#s8:l6">ontfanghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O! droefheydt <rhyme label="a" type="m">over-groot</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">O! schrickelijcke <rhyme label="b" type="m">schrick</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Eylaes! de droeve <rhyme label="a" type="m" corresp="#s9:l1">Doodt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Komt op een <rhyme label="b" type="m" corresp="#s9:l2">ooghenblick</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Wanneer men 't niet en <rhyme label="c" type="m">weet</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Komt Godt ons vaeck <rhyme label="d" type="f">verrassen</rhyme>:</l>
        <l id="s9:l7" met="3" type="-+">O! saligh, die <rhyme label="c" type="m" corresp="#s9:l5">ghereet</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Sijn komste weet te <rhyme label="d" type="f" corresp="#s9:l6">passen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
