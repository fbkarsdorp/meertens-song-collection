  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GElijck een <rhyme label="a" type="m">Roose-knop</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De Christalijne <rhyme label="a" type="m" corresp="#s1:l1">drop</rhyme>,</l>
        <l id="s1:l3" met="6" type="-+">Van koelen Morgen-douw op Somer-tijdt <rhyme label="b" type="m">geniet</rhyme>,</l>
        <l id="s1:l4" met="6" type="-+">Sigh opent als de Son daer op sijn straeltjes <rhyme label="b" type="m" corresp="#s1:l3">schiet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soo is de soete <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Aen een verliefde <rhyme label="a" type="m" corresp="#s2:l1">sin</rhyme>,</l>
        <l id="s2:l3" met="6" type="-+">De gunste van een Maeght is als een <rhyme label="b" type="m">Morgen-douw</rhyme>,</l>
        <l id="s2:l4" met="6" type="-+">Die rechte liefde voet, en baert uyt liefde <rhyme label="b" type="m" corresp="#s2:l3">trouw</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O! Bruydt, o! lieve <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ghy die de kroone <rhyme label="a" type="m" corresp="#s3:l1">draeght</rhyme>,</l>
        <l id="s3:l3" met="6" type="-+">Als zijnde Maeght en Bruydt door liefdens soete <rhyme label="b" type="m">Wet</rhyme>,</l>
        <l id="s3:l4" met="6" type="-+">Maer morgen Bruydt en Vrouw, op 't lieve <rhyme label="b" type="m" corresp="#s3:l3">Bruylofs-Bedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O! soete lieve <rhyme label="a" type="m">Min</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wat hebt ghy soetheydt <rhyme label="a" type="m" corresp="#s4:l1">in</rhyme>,</l>
        <l id="s4:l3" met="6" type="-+">Wat baert u soetheydt vreught door Wetten van de <rhyme label="b" type="m">trouw</rhyme>,</l>
        <l id="s4:l4" met="6" type="-+">O trou' die door de Min maeckt van een Maeght een <rhyme label="b" type="m" corresp="#s4:l3">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O! trouw die zielen <rhyme label="a" type="m">bint</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">O ziel! die trouw'lijck <rhyme label="a" type="m" corresp="#s5:l1">mint</rhyme>,</l>
        <l id="s5:l3" met="6" type="-+">O! minne die de trouw in minne-lust <rhyme label="b" type="m">voldoet</rhyme>,</l>
        <l id="s5:l4" met="6" type="-+">En door de trouw geniet mins aldersoetste <rhyme label="b" type="m" corresp="#s5:l3">soet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hoe saligh is de <rhyme label="a" type="m">lust</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die sulcke minne <rhyme label="a" type="m" corresp="#s6:l1">blust</rhyme>;</l>
        <l id="s6:l3" met="6" type="-+">Hoe saligh is de ziel die lusten niet wil <rhyme label="b" type="m">voen</rhyme>,</l>
        <l id="s6:l4" met="6" type="-+">Als daerse na Godts Wet de soete min <rhyme label="b" type="m" corresp="#s6:l3">voldoen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O twee! door liefde <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Den Hemel u <rhyme label="a" type="m" corresp="#s7:l1">verleen</rhyme>,</l>
        <l id="s7:l3" met="6" type="-+">Dat ghy naer uwe wensch, door plichten van de <rhyme label="b" type="m">deught</rhyme>,</l>
        <l id="s7:l4" met="6" type="-+">V hooghste salicheydt door min betrachten <rhyme label="b" type="m" corresp="#s7:l3">meught</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
