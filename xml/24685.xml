    <melody>Het waren twee gespelen goed</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Verblijdt v lieue broeders <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s1:l2" met="4" type="-+">die tijt es cort het sal doch <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Een yeghelijc die sal <rhyme label="b" type="m">ontfaen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">sijn loen van dat hij heeft <rhyme label="b" type="m" corresp="#s1:l3">ghedaen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met rechte so moegdi zijn <rhyme label="a" type="m">verblijt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">in ihesum cristum talder <rhyme label="a" type="m" corresp="#s2:l1">tijt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Die v die gracie heeft <rhyme label="b" type="m">verleent</rhyme></l>
        <l id="s2:l4" met="4" type="-+">dat ghi der werelt niet en <rhyme label="b" type="m" corresp="#s2:l3">dient</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die werelt es <rhyme label="a" type="m">verganckelic</rhyme></l>
        <l id="s3:l2" met="4" type="-+">haer loen es zeer seer <rhyme label="a" type="m" corresp="#s3:l1">wondelijc</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Wanneer haer diennaer waent <rhyme label="b" type="m">ontfaen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">so comt die doot en spert hem <rhyme label="b" type="m" corresp="#s3:l3">aen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Och hoe veruaerlijc es <rhyme label="a" type="m">tverdriet</rhyme></l>
        <l id="s4:l2" met="4" type="-+">in hem dan als hij ouer <rhyme label="a" type="m" corresp="#s4:l1">siet</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Dat al zijn blijscap es <rhyme label="b" type="m">ghedaen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">ende ducht hij moet ter hellen <rhyme label="b" type="m" corresp="#s4:l3">gaen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Daer veel tormenten zij <rhyme label="a" type="m">bereet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">hem die zijn leuen heeft <rhyme label="a" type="m" corresp="#s5:l1">gheleet</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Al hi beneden op <rhyme label="b" type="m">eerderijc</rhyme></l>
        <l id="s5:l4" met="4" type="-+">in oncuusheit <rhyme label="b" type="m" corresp="#s5:l3">houerdelijc</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Och die tormenten zijn soe <rhyme label="a" type="m">fel</rhyme></l>
        <l id="s6:l2" met="4" type="-+">So wie daer es hij eilde <rhyme label="a" type="m" corresp="#s6:l1">wel</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Als ic vermoe na mijn <rhyme label="b" type="m">verstaen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">dat hem die oot mocht commen <rhyme label="b" type="m" corresp="#s6:l3">aen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">So wie daer es een ooch op <rhyme label="a" type="m">slach</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Het dincket hem zijnde so menighen <rhyme label="a" type="m" corresp="#s7:l1">dach</rhyme></l>
        <l id="s7:l3" met="4" type="-+">veel meer dan maken M <rhyme label="b" type="m">jaer</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Dat doet die pine die helsche <rhyme label="b" type="m" corresp="#s7:l3">vaer</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och dus crijcht hij wanhoep <rhyme label="a" type="m">wantrou</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Ende voor zijn sonden gheen <rhyme label="a" type="m" corresp="#s8:l1">berou</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Want hij hem niet en heeft <rhyme label="b" type="m">ghedient</rhyme></l>
        <l id="s8:l4" met="4" type="-+">die sijn dienaers berou <rhyme label="b" type="m" corresp="#s8:l3">verleent</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Och ghi die hier begheert af <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Te sijne int laste nu hoort na <rhyme label="a" type="m" corresp="#s9:l1">my</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Ic rade dat ghij de werelt <rhyme label="b" type="m">vliet</rhyme></l>
        <l id="s9:l4" met="4" type="-+">so en comdij in deser vreesen <rhyme label="b" type="m" corresp="#s9:l3">niet</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">En dient ihesum met hert met <rhyme label="a" type="m">zin</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Hij sal v gheuen goet <rhyme label="a" type="m" corresp="#s10:l1">ghewin</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Dat beter sijn sal hondert <rhyme label="b" type="m">vout</rhyme></l>
        <l id="s10:l4" met="4" type="-+">dan ghi verdient of wensche <rhyme label="b" type="m" corresp="#s10:l3">soudt</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Int tend sal hij v doen <rhyme label="a" type="m">ghetrou</rhyme></l>
        <l id="s11:l2" met="4" type="-+">ende voor v sonden goet <rhyme label="a" type="m" corresp="#s11:l1">berou</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Dan ghi die vreese met sult <rhyme label="b" type="m">verslaen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Wanneer sij v tont vechten <rhyme label="b" type="m" corresp="#s11:l3">aen</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">O dincket wat vrueghden v sal <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Als ghi ghedient hebt v <rhyme label="a" type="m" corresp="#s12:l1">termijn</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Jhesus coninc der werelt <rhyme label="b" type="m">wijt</rhyme></l>
        <l id="s12:l4" met="4" type="-+">die v sal gheuen <rhyme label="b" type="m" corresp="#s12:l3">hemelrijc</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Och daer erst al so zuet so <rhyme label="a" type="m">scoen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Een yeghelijc draecht dan een <rhyme label="a" type="m" corresp="#s13:l1">croon</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Die claerder blinket <rhyme label="b" type="m">onghelijc</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Dan zonne sterre nv ter <rhyme label="b" type="m" corresp="#s13:l3">tijt</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Der zielen brugom es soe <rhyme label="a" type="m">scoon</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Ende sit daer inden hoochsten <rhyme label="a" type="m" corresp="#s14:l1">troon</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Die vrueghde es <rhyme label="b" type="m">onsprekelijc</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Daer hij zijn dienaers mede <rhyme label="b" type="m" corresp="#s14:l3">verblijt</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dijn zoet aenscouwen es so <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s15:l2" met="4" type="-+">wie bi hem es tien dusent <rhyme label="a" type="m" corresp="#s15:l1">jaer</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Het dinct hem zijnde een cleene <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Ja hele min dan een <rhyme label="b" type="m" corresp="#s15:l3">oeghelblijc</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Och die mocht hooren dat <rhyme label="a" type="m">sgheluyt</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Dat daer een yeghelijc gheuet <rhyme label="a" type="m" corresp="#s16:l1">vut</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Hij soude wel liden alle <rhyme label="b" type="m">pine</rhyme></l>
        <l id="s16:l4" met="4" type="-+">om een huere in die vrueghde <rhyme label="b" type="m" corresp="#s16:l3">tsijn</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Nu laet ons hier om roepen <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Jhesum cristum den soete <rhyme label="a" type="m" corresp="#s17:l1">naem</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Ende bidden dat hij ons hier <rhyme label="b" type="m">verleen</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Hem hier te dienen sonder <rhyme label="b" type="m" corresp="#s17:l3">vlien</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">O ihesu heere der maeghden <rhyme label="a" type="m">croon</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Maria vutuercooren <rhyme label="a" type="m" corresp="#s18:l1">zoon</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Die suuer bleef na v <rhyme label="b" type="m">gheboot</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Van v begheeren wij tsine <rhyme label="b" type="m" corresp="#s18:l3">ghehoort</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">O scepper hemels ende <rhyme label="a" type="m">eerterijc</rhyme></l>
        <l id="s19:l2" met="4" type="-+">wij bidden v <rhyme label="a" type="m" corresp="#s19:l1">oetmoedelijc</rhyme></l>
        <l id="s19:l3" met="4" type="-+">Wilt ons verleenen nu ter <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s19:l4" met="4" type="-+">V hier te dienen met <rhyme label="b" type="m" corresp="#s19:l3">iolijt</rhyme></l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Ende als ons tijt hier es <rhyme label="a" type="m">ghedaen</rhyme></l>
        <l id="s20:l2" met="4" type="-+">So wilt ons met solaes <rhyme label="a" type="m" corresp="#s20:l1">ontfaen</rhyme></l>
        <l id="s20:l3" met="4" type="-+">Bij v bouen in <rhyme label="b" type="m">hemelrijc</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Daer vrueght ende vrede es <rhyme label="b" type="m" corresp="#s20:l3">eewelijc</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
