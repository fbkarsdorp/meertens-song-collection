    <tags>
      <tag translation="">Geestelijk lied</tag>
    </tags>
    <melody>Drie gezellen</melody>
    <categories/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe leven wil, in vrede <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hem selven leeren <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En d'eige zin, al schijntze <rhyme label="a" type="m" corresp="#s1:l1">goet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om vreeds-wil dickwils <rhyme label="b" type="f" corresp="#s1:l2">derven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De vree is Christo al te <rhyme label="a" type="m">lief</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hy was noch nau <rhyme label="b" type="f">geboren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Of d'alderzoetste <rhyme label="a" type="m" corresp="#s2:l1">minne-brief</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dee ons het vree-lied <rhyme label="b" type="f" corresp="#s2:l2">hooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy ginck, hy stont, hy sprack, hy <rhyme label="a" type="m">wrocht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het hoogste zijnder <rhyme label="b" type="f">scholen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Was schier: de vree heb ick <rhyme label="a" type="m" corresp="#s3:l1">gezocht</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">De vree werd u <rhyme label="b" type="f" corresp="#s3:l2">bevolen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'t Is vrede die ick u <rhyme label="a" type="m">nae-laet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">'t Is vree die 'k u wil <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Zoo hier, als met een <rhyme label="a" type="m" corresp="#s4:l1">overmaet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In 't hof van 't eeuwigh <rhyme label="b" type="f" corresp="#s4:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'t Was vrede vroeg, 't was vrede <rhyme label="a" type="m">spae</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">'t Was vree zoo <rhyme label="b" type="f">menigwerven</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">'t Was vrede voor, 't was vrede <rhyme label="a" type="m" corresp="#s5:l1">nae</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'t Was vrede in zijn <rhyme label="b" type="f" corresp="#s5:l2">sterven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">In 't kort de vree wast eerst en 't <rhyme label="a" type="m">lest</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">'t Welck Iesus ons <rhyme label="b" type="f">betrouden</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Hoe moet men dan wel doen zijn <rhyme label="a" type="m" corresp="#s6:l1">best</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Om vrede <rhyme label="b" type="f" corresp="#s6:l2">t'onderhouden</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Heer laet ick hier vry sijn de <rhyme label="a" type="m">minst</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van keur, van plaets, van <rhyme label="b" type="f">allen</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Wanneer my maer de rijkste <rhyme label="a" type="m" corresp="#s7:l1">winst</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van vree te beur mag <rhyme label="b" type="f" corresp="#s7:l2">vallen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Mijn ziel! tracht nae dit hoge <rhyme label="a" type="m">lot</rhyme>:</l>
        <l id="s8:l2" met="3" type="-+">Gh'en kunt toch nergens <rhyme label="b" type="f">rusten</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Dan inde vree. Want vree is <rhyme label="a" type="m" corresp="#s8:l1">God</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En d'oorsprong der <rhyme label="b" type="f" corresp="#s8:l2">wellusten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
