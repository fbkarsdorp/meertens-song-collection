<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11761</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Schoonste nimf van het woud</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HAet en Nijd dat snoode <rhyme label="a" type="m">beest</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Berght sich <rhyme label="a" type="m" corresp="#s1:l1">meest</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Onder Broeders, onder <rhyme label="b" type="f">Vrienden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En sy spreyt haer bittre <rhyme label="c" type="m">gal</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Over <rhyme label="c" type="m" corresp="#s1:l4">al</rhyme>:</l>
        <l id="s1:l6" met="4" type="+-">Waerje soeckt ghy sultse <rhyme label="b" type="f" corresp="#s1:l3">vinden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Abel, die sijn Schaepjes <rhyme label="a" type="m">weyt</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Op der <rhyme label="a" type="m" corresp="#s2:l1">heyd</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En sijn Offer Gode <rhyme label="b" type="f">brachte</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">En het malste van het <rhyme label="c" type="m">Lam</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Of den <rhyme label="c" type="m" corresp="#s2:l4">Ram</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Tot een danckbaer offer <rhyme label="b" type="f" corresp="#s2:l3">slachte</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dese kost oock niet <rhyme label="a" type="m">ontgaen</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">'t Stout <rhyme label="a" type="m" corresp="#s3:l1">bestaen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En sijns broeders nijdigh <rhyme label="b" type="f">poogen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Om dat Godt sijn <rhyme label="c" type="m">Offerhand</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Van het <rhyme label="c" type="m" corresp="#s3:l4">Land</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Niet soo smaecklijck was in <rhyme label="b" type="f" corresp="#s3:l3">d'oogen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Godt die Cains gramschap <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Achtse <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Om dat sijne sond <rhyme label="b" type="f">belette</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dat sijn Offer en de <rhyme label="c" type="m">vlam</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Opwaerts <rhyme label="c" type="m" corresp="#s4:l4">klam</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En 't werck in den grond <rhyme label="b" type="f" corresp="#s4:l3">verplette</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Want waer Haet en Nijd groeyt <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Daer sal <rhyme label="a" type="m" corresp="#s5:l1">staen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Sond en ondeughd voor de <rhyme label="b" type="f">deure</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Doch ghy sult met aller <rhyme label="c" type="m">macht</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Houden <rhyme label="c" type="m" corresp="#s5:l4">wacht</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Datse u niet breng in <rhyme label="b" type="f" corresp="#s5:l3">treuren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hier uyt schepte Nijd haer <rhyme label="a" type="m">grond</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">En sy <rhyme label="a" type="m" corresp="#s6:l1">vond</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Stof om vinnighlijck te <rhyme label="b" type="f">wonden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En de snoode <rhyme label="c" type="m">broeder-moord</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Noyt <rhyme label="c" type="m" corresp="#s6:l4">gehoort</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Groeyde door dees vuyle <rhyme label="b" type="f" corresp="#s6:l3">sonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Oude, snoode vuyle <rhyme label="a" type="m">Nijdt</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Die de <rhyme label="a" type="m" corresp="#s7:l1">tijdt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Liet soo breede wortels <rhyme label="b" type="f">schieten</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Dat m' oock waer men komt of <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Nijd en <rhyme label="c" type="m" corresp="#s7:l4">Haet</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Siet in Kerck en Cellen <rhyme label="b" type="f" corresp="#s7:l3">vlieten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">O ghy pest, die stadigh <rhyme label="a" type="m">wroet</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">In 't <rhyme label="a" type="m" corresp="#s8:l1">gemoed</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">En bedwelmt ons goe <rhyme label="b" type="f">gedachten</rhyme>;</l>
        <l id="s8:l4" met="4" type="+-">Jae ghy brenght, door u <rhyme label="c" type="m">bedrijf</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Ziel en <rhyme label="c" type="m" corresp="#s8:l4">lijf</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Dat 's op recht noch reeden <rhyme label="b" type="f" corresp="#s8:l3">achten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Laet dan Heer dit snoo <rhyme label="a" type="m">gespuys</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">‘Vyt ons <rhyme label="a" type="m" corresp="#s9:l1">huys</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">‘En ons ziele zijn <rhyme label="b" type="f">verschoven</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">‘Bouwter liefd' en eendracht <rhyme label="c" type="m">in</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">‘En een <rhyme label="c" type="m" corresp="#s9:l4">sin</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">‘Die geneyght is God te <rhyme label="b" type="f" corresp="#s9:l3">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
