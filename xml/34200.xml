  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Sivlia hoe langh sal u <rhyme label="a" type="m">hert</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Myn soete minne <rhyme label="b" type="m">pyn</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Met strafheydt wygherigh <rhyme label="b" type="m" corresp="#s1:l2">zyn</rhyme>?</l>
        <l id="s1:l4" met="4" type="-+">Behaeght u dan myn groote <rhyme label="a" type="m" corresp="#s1:l1">smert</rhyme>?</l>
        <l id="s1:l5" met="3" type="-+">Dat ghy hem niet en <rhyme label="c" type="m">acht</rhyme>?</l>
        <l id="s1:l6" met="3" type="-+">Die u syn jonst <rhyme label="c" type="m" corresp="#s1:l5">toe-lacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Waer-om noem ick Sivia <rhyme label="a" type="m">straf</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Die door haer <rhyme label="b" type="m">soetigheyt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">My dickwils heeft <rhyme label="b" type="m" corresp="#s2:l2">verbleyt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Wanneer sy my te pande <rhyme label="a" type="m" corresp="#s2:l1">gaf</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Haer hert tot <rhyme label="c" type="m">onder-trou</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dat sy my minnen <rhyme label="c" type="m" corresp="#s2:l5">sou</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Doen als ick met een soete <rhyme label="a" type="m">vreucht</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Haer schaepkens hebt <rhyme label="b" type="m">gheleyt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En van den Wolf <rhyme label="b" type="m" corresp="#s3:l2">bevryt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Doen kroonde sy myn gonst en <rhyme label="a" type="m" corresp="#s3:l1">deucht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En songh een vreudigh <rhyme label="c" type="m">liet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">d'Welck onse min <rhyme label="c" type="m" corresp="#s3:l5">bediet</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Vont ick u schoone <rhyme label="a" type="m">Herderin</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ons soete minne <rhyme label="b" type="m">pyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sou nu noch grooter <rhyme label="b" type="m" corresp="#s4:l2">zyn</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">De trouw sou voeden onse <rhyme label="a" type="m" corresp="#s4:l1">min</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">De gonst u <rhyme label="c" type="m">soetigheyt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En vr√© myn langhen <rhyme label="c" type="m" corresp="#s4:l5">stryt</rhyme>.</l>
      </lg>
    </lg>
  </text>
