  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ey vrinden wilt <rhyme label="a" type="f">aenhooren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Koop van my een wonder <rhyme label="b" type="m">lied</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">'t geen ik u stel te <rhyme label="a" type="f" corresp="#s1:l1">vooren</rhyme></l>
        <l id="s1:l4" met="4" type="+-">In 's Hertogenbosch <rhyme label="b" type="m" corresp="#s1:l2">geschied</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Al van een maegt wilt <rhyme label="c" type="f">weten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Catryn is zy <rhyme label="c" type="f" corresp="#s1:l5">geheeten</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Zy had manne kleeren <rhyme label="d" type="m">aen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Hoort wat zy heeft <rhyme label="d" type="m" corresp="#s1:l7">gedaen</rhyme>.</l>
        <l id="s1:l9" met="4" type="+-">Ging als een kaerel na de <rhyme label="e" type="m">wagt</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Geen Mooijer klugt is nooit <rhyme label="e" type="m" corresp="#s1:l9">bedagt</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Hy vroeg daer aen de <rhyme label="f" type="m">Capiteyn</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Heb gy ook dienst voor <rhyme label="f" type="m" corresp="#s1:l11">Myn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Capityn <rhyme label="a" type="f">verheeven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Sprak daedelyk <rhyme label="b" type="m">playsant</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Syn naem wier <rhyme label="a" type="f" corresp="#s2:l1">opgeschreeven</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Tien ryksdaelders op de <rhyme label="b" type="m" corresp="#s2:l2">hand</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Hy trad gelyk een <rhyme label="c" type="f">paerel</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Men dagt wat schoonder <rhyme label="c" type="f" corresp="#s2:l5">kaerel</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Bruin en Blont van <rhyme label="d" type="m">haer</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Hy is maer twintig <rhyme label="d" type="m" corresp="#s2:l7">jaer</rhyme></l>
        <l id="s2:l9" met="4" type="+-">Maer niemant dagt op dat <rhyme label="e" type="m">pas</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Dat de Ruiter gespleeten <rhyme label="e" type="m" corresp="#s2:l9">was</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Ruim 9 maanden naer den <rhyme label="f" type="m">dag</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Dat men wat anders <rhyme label="f" type="m" corresp="#s2:l11">zag</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den tyd die waer <rhyme label="a" type="f">verscheenen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Deesen Ruiter had de <rhyme label="b" type="m">wagt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Doe moest men schierlyk <rhyme label="a" type="f" corresp="#s3:l1">heene</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Haelt den doctoor in de <rhyme label="b" type="m" corresp="#s3:l2">nagt</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Den doctoor zonder <rhyme label="c" type="f">faele</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ging hem een drankje <rhyme label="c" type="f" corresp="#s3:l5">haalen</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Ik zie hy heeft zoon pyn in 't <rhyme label="d" type="m">lyf</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Van kou is het zo <rhyme label="d" type="m" corresp="#s3:l7">styf</rhyme>.</l>
        <l id="s3:l9" met="4" type="+-">Een ieder moest doe loopen <rhyme label="e" type="m">gouw</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Te haele daer de Goeije <rhyme label="e" type="m" corresp="#s3:l9">vrouw</rhyme></l>
        <l id="s3:l11" met="4" type="+-">De Ruiters dansten door <rhyme label="f" type="m">Malkaar</rhyme></l>
        <l id="s3:l12" met="3" type="-+">Net of 't bruiloft <rhyme label="f" type="m" corresp="#s3:l11">waer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'t Waer om geluk te <rhyme label="a" type="f">wensen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Goede morgen heer <rhyme label="b" type="m">Kaptyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Tot spot voor alle <rhyme label="a" type="f" corresp="#s4:l1">mensen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Geeft ons Geld voor <rhyme label="b" type="m" corresp="#s4:l2">Brandewyn</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Nu ook nog wat voor <rhyme label="c" type="f">suiker</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">'t Smaekt ons als <rhyme label="c" type="f" corresp="#s4:l5">duiker</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">U Ruiter die heeft voort <rhyme label="d" type="m">gebragt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Twee Zoonen in een <rhyme label="d" type="m" corresp="#s4:l7">dragt</rhyme>.</l>
        <l id="s4:l9" met="4" type="+-">De Ruiters waaren alle <rhyme label="e" type="m">bly</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">Zo versterkt ons <rhyme label="e" type="m" corresp="#s4:l9">Compagnie</rhyme></l>
        <l id="s4:l11" met="4" type="+-">De buurvrouw Ka, Zei ha ha <rhyme label="f" type="m">ha</rhyme>;</l>
        <l id="s4:l12" met="3" type="-+">En song al <rhyme label="f" type="m" corresp="#s4:l11">falderalla</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Den Kapietyn heeft <rhyme label="a" type="f">vernomen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Is by de kraemvrou <rhyme label="b" type="m">gegaen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gy hebt voor myn geen <rhyme label="a" type="f" corresp="#s5:l1">schroomen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Wie moet hier voor vader <rhyme label="b" type="m" corresp="#s5:l2">staen</rhyme>?</l>
        <l id="s5:l5" met="3" type="-+">Sy sprak ik zal 't u <rhyme label="c" type="f">zeggen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Daer ik snags by moest <rhyme label="c" type="f" corresp="#s5:l5">leggen</rhyme>;</l>
        <l id="s5:l7" met="3" type="+-">'t Was voor myn een trouwe <rhyme label="d" type="m">vriend</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Hy heeft myn wel <rhyme label="d" type="m" corresp="#s5:l7">bedient</rhyme>.</l>
        <l id="s5:l9" met="4" type="+-">Ik weet meer als ik seggen <rhyme label="e" type="m">wil</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">Daerom swygt 'er maer van <rhyme label="e" type="m" corresp="#s5:l9">stil</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">'t Is geschiet vermeld dit <rhyme label="f" type="m">lied</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Ik heb nog geen <rhyme label="f" type="m" corresp="#s5:l11">verdriet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doe kreeg zy nog tot <rhyme label="a" type="f">loonen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Voorspraak van den <rhyme label="b" type="m">Capietyn</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Alle week 2 <rhyme label="a" type="f" corresp="#s6:l1">kroone</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Voor de jonge Ruiters <rhyme label="b" type="m" corresp="#s6:l2">fyn</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Kaetryntje kan hier <rhyme label="c" type="f">blyven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Voor ons wassen en <rhyme label="c" type="f" corresp="#s6:l5">styven</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Ider die wel merken <rhyme label="d" type="m">kan</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Waer dat het koom van <rhyme label="d" type="m" corresp="#s6:l7">daen</rhyme>,</l>
        <l id="s6:l9" met="4" type="+-">Dit klugtje is wel waer <rhyme label="e" type="m">geschied</rhyme></l>
        <l id="s6:l10" met="4" type="+-">Zoo als de zanger u <rhyme label="e" type="m" corresp="#s6:l9">bediet</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">Koop alle gaer, een boekje <rhyme label="f" type="m">maer</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">Voor een stuiver benje <rhyme label="f" type="m" corresp="#s6:l11">klaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
