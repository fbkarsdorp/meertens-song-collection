  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe dus, sachtmoedigheyts <rhyme label="a" type="f">exempel</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Hoe dus, verduldigh stille <rhyme label="b" type="m">lam</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Dat ghy u heden in den <rhyme label="a" type="f" corresp="#s1:l1">tempel</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Vertoont dus boven maten <rhyme label="b" type="m" corresp="#s1:l2">gram</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Uw oogen, die soo korts te <rhyme label="a" type="f">voren</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Verquikten elk met haren <rhyme label="b" type="m">blik</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die slonk'ren nu van heyl'gen <rhyme label="a" type="f" corresp="#s2:l1">tooren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die 't als een bliksem al <rhyme label="b" type="m" corresp="#s2:l2">verschrik'</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Uw mont en lippen, daer voor <rhyme label="a" type="f">desen</rhyme>.</l>
        <l id="s3:l2" met="4" type="-+">Genaed' en enkel <rhyme label="b" type="m">soetigheyt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Op uyt-gestortet plagh te <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Zijn nu tot wreet gebrul <rhyme label="b" type="m" corresp="#s3:l2">bercydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Uw armen, die t' omhelsen <rhyme label="a" type="f">plachten</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Uw handen, die den zegen <rhyme label="b" type="m">dêên</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Zijn uytgestrekt, met volle <rhyme label="a" type="f" corresp="#s4:l1">krachten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Tot slaen en geesselen <rhyme label="b" type="m" corresp="#s4:l2">alleen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Uw voeten, die tot heyl en <rhyme label="a" type="f">vrede</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En tot geslis van alle <rhyme label="b" type="m">strijt</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Tot noch toe quamen, siet men <rhyme label="a" type="f" corresp="#s5:l1">mede</rhyme>-</l>
        <l id="s5:l4" met="4" type="-+">Van toorne stampen nu ter <rhyme label="b" type="m" corresp="#s5:l2">tijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sachtmoedigh Konink, die soo <rhyme label="a" type="f">even</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Quaemt rijden op een <rhyme label="b" type="m">eselin</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">O Vrede-vorst, waer is <rhyme label="a" type="f" corresp="#s6:l1">gebleven</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Uw ootmoet en gantsch sachte <rhyme label="b" type="m" corresp="#s6:l2">sin</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ik sie de koopers en <rhyme label="a" type="f">verkoopers</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Voor u wech-vlieden elk om 't <rhyme label="b" type="m">seerst</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Het is de stoutste van de <rhyme label="a" type="f" corresp="#s7:l1">loopers</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die u ontkomen kan op 't <rhyme label="b" type="m" corresp="#s7:l2">eerst</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">'t Is wel te sien, dat haer <rhyme label="a" type="f">geweten</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Haer meer als uwe geessel <rhyme label="b" type="m">sla</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dewijl niet een sich derf <rhyme label="a" type="f" corresp="#s8:l1">vermeten</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die u in 't minste tegen <rhyme label="b" type="m" corresp="#s8:l2">sta</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Om dat een kuyl der <rhyme label="a" type="f">moordenaren</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Was van uw heyligh huys <rhyme label="b" type="m">gemaekt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Soo wil uw toorne niet <rhyme label="a" type="f" corresp="#s9:l1">bedaren</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Tot dat hy als een vlamme <rhyme label="b" type="m" corresp="#s9:l2">blaekt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghy werpt der wisselaren <rhyme label="a" type="f">stoelen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">En tafels t' samen over <rhyme label="b" type="m">hoop</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Men siet het door malkander <rhyme label="a" type="f" corresp="#s10:l1">woelen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Al wat'er is gebracht te <rhyme label="b" type="m" corresp="#s10:l2">koop</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">De duyven in haer korven <rhyme label="a" type="f">spart'len</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Terwijl het onderst boven <rhyme label="b" type="m">light</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">'t Moet alles beven ende <rhyme label="a" type="f" corresp="#s11:l1">mart'len</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">O Christe, voor uw <rhyme label="b" type="m" corresp="#s11:l2">aengesight</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ghy laet niet toe, dat door den <rhyme label="a" type="f">tempel</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Een mensch magh dragen enigh <rhyme label="b" type="m">vat</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Uw geessel drijftse na den <rhyme label="a" type="f" corresp="#s12:l1">drempel</rhyme></l>
        <l id="s12:l4" met="4" type="-+">All wie onthey l'gen 't heyligh <rhyme label="b" type="m" corresp="#s12:l2">padt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dus laet ghy ons aensien en <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Dat ghy in uw <rhyme label="b" type="m">barmhertigheyt</rhyme></l>
        <l id="s13:l3" met="4" type="-+">En ootinoet, niet en hebt <rhyme label="a" type="f" corresp="#s13:l1">verloren</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Uw stiengheyt en <rhyme label="b" type="m" corresp="#s13:l2">rechtveerdigheyt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Dus moest de werelt haer <rhyme label="a" type="f">verwond'ren</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">En merken 't aen tot hare <rhyme label="b" type="m">baet</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Hoe dat ghy alsoo wel kont <rhyme label="a" type="f" corresp="#s14:l1">dond'ren</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Als lieflik schijnen met 't <rhyme label="b" type="m" corresp="#s14:l2">gelaet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Ghy toont, dat ghy des tempels Heer <rhyme label="a" type="f">zijt</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Die 't recht uws huyses brenght te <rhyme label="b" type="m">recht</rhyme>;</l>
        <l id="s15:l3" met="4" type="-+">Die yv'righ voor des selven eer <rhyme label="a" type="f" corresp="#s15:l1">zijt</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">En moedigh uw party <rhyme label="b" type="m" corresp="#s15:l2">bevecht</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Ghy wilt als met een on-weer <rhyme label="a" type="f">ylen</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Met stormen end een groot <rhyme label="b" type="m">gedruys</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Met snelle selle <rhyme label="a" type="f" corresp="#s16:l1">bliksem-pylen</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Op all d' ontheyl'gers van uw <rhyme label="b" type="m" corresp="#s16:l2">huys</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Gordt aen de heup, ô helt, uw <rhyme label="a" type="f">degen</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Uw Majesteyt en <rhyme label="b" type="m">heerlikheyt</rhyme>:</l>
        <l id="s17:l3" met="4" type="-+">Uw rechter-hant verkrygh' de <rhyme label="a" type="f" corresp="#s17:l1">zegen</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Van ootmoet en <rhyme label="b" type="m" corresp="#s17:l2">gerechtigheyt</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Laet ons noyt van uw beed'-huys <rhyme label="a" type="f">maken</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Een snoode moordenaren <rhyme label="b" type="m">kuyl</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Noch met versoeyelike <rhyme label="a" type="f" corresp="#s18:l1">saken</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Uw Heylighdom oyt maken <rhyme label="b" type="m" corresp="#s18:l2">vuyl</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Laet ons bewaren onse <rhyme label="a" type="f">voeten</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Wanneer wy ingaen tot uw <rhyme label="b" type="m">Huys</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Gedenkend' hoe wy u <rhyme label="a" type="f" corresp="#s19:l1">ontmoeten</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Die niet verdraeght 't godloos <rhyme label="b" type="m" corresp="#s19:l2">gespuys</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Opdat ghy noyt ons uyt meught <rhyme label="a" type="f">dryven</rhyme>;</l>
        <l id="s20:l2" met="4" type="-+">Maer wy tot aller tijt <rhyme label="b" type="m">voortaen</rhyme></l>
        <l id="s20:l3" met="4" type="-+">Pilaeren in Godts tempel <rhyme label="a" type="f" corresp="#s20:l1">blyven</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Als die niet meer daer uyt en <rhyme label="b" type="m" corresp="#s20:l2">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
