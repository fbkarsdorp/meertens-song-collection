  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heil'ge Geest! dael neer op <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Kracht uit der hooghten, staet my <rhyme label="a" type="m" corresp="#s1:l1">by</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">â€œGeleidt my in een <rhyme label="b" type="m">effen-landt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Verwarm jmy met uw' heil'gen <rhyme label="b" type="m" corresp="#s1:l3">brandt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O soete vier van Iesu <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hoe soud 'et gaen na mijnen <rhyme label="a" type="m" corresp="#s2:l1">sin</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Indien uw lieffelicke <rhyme label="b" type="m">vlam</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Mijn hert geheel en al <rhyme label="b" type="m" corresp="#s2:l3">in-nam</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O waerde Trooster, die mijn <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Verlichten kunt in alle <rhyme label="a" type="m" corresp="#s3:l1">smert</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En wilt my doch verlaten <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">In mijne quellingh en <rhyme label="b" type="m" corresp="#s3:l3">verdriet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wanneer ick door swaer <rhyme label="a" type="m">ongeval</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Niet weete, wat ick bidden <rhyme label="a" type="m" corresp="#s4:l1">sal</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Soo koomt te hulp mijn swacke <rhyme label="b" type="m">kracht</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Door uwe Goddelijcke <rhyme label="b" type="m" corresp="#s4:l3">macht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Gy selfs wilt voor my bidden <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Met suchten die men niet en <rhyme label="a" type="m" corresp="#s5:l1">kan</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Door een'ge woorden spreken <rhyme label="b" type="m">uit</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Die d'herten kent, weet haer <rhyme label="b" type="m" corresp="#s5:l3">beduidt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gy die een geest der waerheydt <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Geleidt my doch tot aller <rhyme label="a" type="m" corresp="#s6:l1">tijdt</rhyme></l>
        <l id="s6:l3" met="4" type="-+">In uwe waerheidt, dat ick <rhyme label="b" type="m">vry</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Van alle grove dwalingh <rhyme label="b" type="m" corresp="#s6:l3">zy</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Spreeckt gy inwendigh in mijn <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Op dat het niet magh zijn <rhyme label="a" type="m" corresp="#s7:l1">verwert</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Door veele moeyelick <rhyme label="b" type="m">verschil</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Maer rechrt begrijpen uwen <rhyme label="b" type="m" corresp="#s7:l3">wil</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laet my door u herboren <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Soo dat het oude gansch <rhyme label="a" type="m" corresp="#s8:l1">verdwijn</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Tot dat ick eens geheel en <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Een nieuwe schepsel wesen <rhyme label="b" type="m" corresp="#s8:l3">sal</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Geeft dat mijn sond u niet <rhyme label="a" type="m">verdrijf</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Maer dat ick uwen Tempel <rhyme label="a" type="m" corresp="#s9:l1">blijf</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Soo dat gy nimmer van my <rhyme label="b" type="m">scheidt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Maer by my blijft in <rhyme label="b" type="m" corresp="#s9:l3">eeuwigheidt</rhyme>.</l>
      </lg>
    </lg>
  </text>
