  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIndt, baren en <rhyme label="a" type="f">tempeesten</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Den Paerle-moeder <rhyme label="b" type="m">moet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Doorstaen, en <rhyme label="a" type="f" corresp="#s1:l1">d'aldermeesten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Stormen, met ebb' en <rhyme label="b" type="m" corresp="#s1:l2">vloet</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Als 't weer wordt moy en <rhyme label="b" type="m" corresp="#s1:l2">goet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En douw begint te <rhyme label="c" type="f">dalen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Sijn schelpen open <rhyme label="b" type="m" corresp="#s1:l2">doet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Om de douw in te <rhyme label="c" type="f" corresp="#s1:l6">halen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ontfanght in sulcke <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Een Parel wit en <rhyme label="b" type="m">klaer</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Wat heeft niet moete <rhyme label="a" type="f" corresp="#s2:l1">lijden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Sint Anna <rhyme label="b" type="m" corresp="#s2:l2">onvruchtbaer</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Veel Menschen wijs, en <rhyme label="b" type="m" corresp="#s2:l2">dom</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Veel kleynen ende <rhyme label="c" type="f">grooten</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die hebben haer <rhyme label="b" type="m" corresp="#s2:l2">hierom</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Veracht, vervloeckt, <rhyme label="c" type="f" corresp="#s2:l6">verstooten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Haer hart bedroeft, en <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ontsluyt tot Godt haer <rhyme label="b" type="m">Heer</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Die 's Hemels grati <rhyme label="a" type="f" corresp="#s3:l1">heden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In haer laet dalen <rhyme label="b" type="m" corresp="#s3:l2">neer</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Een parel sonder <rhyme label="b" type="m" corresp="#s3:l2">vleck</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Goods moeder, heeft <rhyme label="c" type="f">ontfangen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die 't hooft, die 't breyn en <rhyme label="b" type="m" corresp="#s3:l2">neck</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Verplet van d'helsche <rhyme label="c" type="f" corresp="#s3:l6">slangen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Bevrijt van alle <rhyme label="a" type="f">sonde</rhyme></l>
        <l id="s4:l2" met="3" type="-+">De'es Maeget wort <rhyme label="b" type="m">geheel</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Met lijf en ziel <rhyme label="a" type="f" corresp="#s4:l1">gevonden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Geen smet heeft 't minste <rhyme label="b" type="m" corresp="#s4:l2">deel</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">De Starre, Zon en <rhyme label="b" type="m" corresp="#s4:l2">Maen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">In klaerheyt gaet te <rhyme label="c" type="f">boven</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Haer schoonheyt sal <rhyme label="b" type="m" corresp="#s4:l2">vergaen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Verduyst'ren noch <rhyme label="c" type="f" corresp="#s4:l6">verdoven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hoe suyver 't sneeuw kan <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Noch lely noch <rhyme label="b" type="m">cristal</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Noch Sal'mons throon <rhyme label="a" type="f" corresp="#s5:l1">gepresen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">By haer is <rhyme label="b" type="m" corresp="#s5:l2">niet-men-dal</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Hoe onbevleckt en <rhyme label="b" type="m" corresp="#s5:l2">schoon</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En most niet zijn de <rhyme label="c" type="f">wooningh</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">In welcke Godes <rhyme label="b" type="m" corresp="#s5:l2">Zoon</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Sou rusten Godt en <rhyme label="c" type="f" corresp="#s5:l6">Coningh</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O Parel hoogh van <rhyme label="a" type="f">waerde</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">O Spiegel sonder <rhyme label="b" type="m">smet</rhyme>!</l>
        <l id="s6:l3" met="3" type="-+">Van Iesu, die ghy <rhyme label="a" type="f" corresp="#s6:l1">baerde</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Verkrijght ons door 't <rhyme label="b" type="m" corresp="#s6:l2">gebedt</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Dat hy ons ziel en <rhyme label="b" type="m" corresp="#s6:l2">hart</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Suyver en schoon wilt <rhyme label="c" type="f">maken</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dat smet noch 't sondigh <rhyme label="b" type="m" corresp="#s6:l2">swart</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Ons hart noch ziel mach <rhyme label="c" type="f" corresp="#s6:l6">raken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O Moeder! wilt <rhyme label="a" type="f">bewaren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die 't onbevleckte <rhyme label="b" type="m">feest</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Van u trouw alle <rhyme label="a" type="f" corresp="#s7:l1">jaren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Vieren met lijf en <rhyme label="b" type="m" corresp="#s7:l2">geest</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Van onweer, en <rhyme label="b" type="m" corresp="#s7:l2">tempeest</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Van klip, van plaet, van <rhyme label="c" type="f">baren</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Maeckt dat wy <rhyme label="b" type="m" corresp="#s7:l2">onbevreest</rhyme></l>
        <l id="s7:l8" met="3" type="-+">In 's Hemels haven <rhyme label="c" type="f" corresp="#s7:l6">varen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
