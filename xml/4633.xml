  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">WAerom weer <rhyme label="a" type="f">geweken</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Onberade <rhyme label="b" type="m">volk</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Op de nieuwe <rhyme label="a" type="f" corresp="#s1:l1">streken</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Van den nieuwen <rhyme label="b" type="m" corresp="#s1:l2">Tolk</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Tot de <rhyme label="c" type="f">Elementen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Idel en <rhyme label="d" type="m">onsterk</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Van de <rhyme label="c" type="f" corresp="#s1:l5">Sacramenten</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Christi, en zijn <rhyme label="d" type="m" corresp="#s1:l6">Kerk</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Docht het u te <rhyme label="a" type="f">wezen</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Dan noch niet <rhyme label="b" type="m">genoug</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Datmen u van <rhyme label="a" type="f" corresp="#s2:l1">deze</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Vijf gelijk weg <rhyme label="b" type="m" corresp="#s2:l2">droug</rhyme>?</l>
        <l id="s2:l5" met="3" type="+-">Ten waer datmen <rhyme label="c" type="f">vande</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Overbleve <rhyme label="d" type="m">twee</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">’t Vwer schaed’ en <rhyme label="c" type="f" corresp="#s2:l5">schande</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Noch het beste <rhyme label="d" type="m" corresp="#s2:l6">dee</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">’t Blijkt wel aen de <rhyme label="a" type="f">dissen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Daer ghyluiden <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Voor een teiken, <rhyme label="a" type="f" corresp="#s3:l1">missen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Christus vleesch en <rhyme label="b" type="m" corresp="#s3:l2">bloed</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Voedende, <rhyme label="c" type="f">eylacen</rhyme>!</l>
        <l id="s3:l6" met="3" type="+-">Zich de kind’ren <rhyme label="d" type="m">Goods</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Voor’t geslagte <rhyme label="c" type="f" corresp="#s3:l5">Paessen</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Met een brokjen <rhyme label="d" type="m" corresp="#s3:l6">broods</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Och een drouven <rhyme label="a" type="f">hinder</rhyme>!</l>
        <l id="s4:l2" met="3" type="+-">Och een groote <rhyme label="b" type="m">schae</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Maer z’en was niet <rhyme label="a" type="f" corresp="#s4:l1">minder</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Die men u daer <rhyme label="b" type="m" corresp="#s4:l2">nae</rhyme></l>
        <l id="s4:l5" met="3" type="+-">In het doopsel <rhyme label="c" type="f">dede</rhyme>:</l>
        <l id="s4:l6" met="3" type="+-">Daer een enkel <rhyme label="d" type="m">nat</rhyme></l>
        <l id="s4:l7" met="3" type="+-">U kwam inde <rhyme label="c" type="f" corresp="#s4:l5">stede</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Van een zuiver <rhyme label="d" type="m" corresp="#s4:l6">bad</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Vraegt uw’ nieuwe <rhyme label="a" type="f">Prater</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Eens, wanneer hy <rhyme label="b" type="m">Kerkt</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Wat het <rhyme label="a" type="f" corresp="#s5:l1">Doopsel-water</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Inde zielen <rhyme label="b" type="m" corresp="#s5:l2">werkt</rhyme>?</l>
        <l id="s5:l5" met="3" type="+-">Wil hy ’t maer <rhyme label="c" type="f">uitleggen</rhyme></l>
        <l id="s5:l6" met="3" type="+-">Nae de nieuwe <rhyme label="d" type="m">gloos</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Hy zal moeten <rhyme label="c" type="f" corresp="#s5:l5">zeggen</rhyme>:</l>
        <l id="s5:l8" met="3" type="+-">Niet met al <rhyme label="d" type="m" corresp="#s5:l6">altoos</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Want dit is den <rhyme label="a" type="f">regel</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Van Geneven <rhyme label="b" type="m">lief</rhyme>;</l>
        <l id="s6:l3" met="3" type="+-">Dat den Doop een <rhyme label="a" type="f" corresp="#s6:l1">zegel</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Maer is aen een <rhyme label="b" type="m" corresp="#s6:l2">brief</rhyme>.</l>
        <l id="s6:l5" met="3" type="+-">Ismen niet <rhyme label="c" type="f">verkoren</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Van all’ de’eeuwen <rhyme label="d" type="m">af</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">’t Water gaet <rhyme label="c" type="f" corresp="#s6:l5">verloren</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Dat Geneven <rhyme label="d" type="m" corresp="#s6:l6">gaf</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Doopt twee <rhyme label="a" type="f">Nieu-geboren</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Die tot eender <rhyme label="b" type="m">dragt</rhyme></l>
        <l id="s7:l3" met="3" type="+-">Onlangs van te <rhyme label="a" type="f" corresp="#s7:l1">voren</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Sijn ter werld <rhyme label="b" type="m" corresp="#s7:l2">gebragt</rhyme>:</l>
        <l id="s7:l5" met="3" type="+-">’t Een zal daed’lijk <rhyme label="c" type="f">vaeren</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Ist verkoren <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Door de swarte <rhyme label="c" type="f" corresp="#s7:l5">baeren</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Naer het Helsch <rhyme label="d" type="m" corresp="#s7:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">’t Ander gaet nae ’t <rhyme label="a" type="f">leven</rhyme>.</l>
        <l id="s8:l2" met="3" type="+-">Doch niet deur den <rhyme label="b" type="m">Doop</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">’t Welk noit yemand <rhyme label="a" type="f" corresp="#s8:l1">geven</rhyme></l>
        <l id="s8:l4" met="3" type="+-">Kon zoo goeden <rhyme label="b" type="m" corresp="#s8:l2">loop</rhyme>;</l>
        <l id="s8:l5" met="3" type="+-">Maer niet dan door <rhyme label="c" type="f">gracy</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">(Zoomen u <rhyme label="d" type="m">verzierdt</rhyme>)</l>
        <l id="s8:l7" met="3" type="+-">Van <rhyme label="c" type="f" corresp="#s8:l5">Predestinaty</rhyme></l>
        <l id="s8:l8" met="3" type="+-">Diet ten Hemel <rhyme label="d" type="m" corresp="#s8:l6">stierdt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Waer zijn dan <rhyme label="a" type="f">verloren</rhyme></l>
        <l id="s9:l2" met="3" type="+-">U, naer Godes <rhyme label="b" type="m">woord</rhyme>,</l>
        <l id="s9:l3" met="3" type="+-">d’Edelste <rhyme label="a" type="f" corresp="#s9:l1">lavoren</rhyme></l>
        <l id="s9:l4" met="3" type="+-">Vande <rhyme label="b" type="m" corresp="#s9:l2">weer-geboort</rhyme>?</l>
        <l id="s9:l5" met="3" type="+-">En waer is <rhyme label="c" type="f">gebleven</rhyme></l>
        <l id="s9:l6" met="3" type="+-">’t Levend-makend <rhyme label="d" type="m">nat</rhyme>.</l>
        <l id="s9:l7" met="3" type="+-">Och! het is <rhyme label="c" type="f" corresp="#s9:l5">Geneven</rhyme></l>
        <l id="s9:l8" met="3" type="+-">Diet u heeft <rhyme label="d" type="m" corresp="#s9:l6">ontvat</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Roupt dan: wee de <rhyme label="a" type="f">tijen</rhyme></l>
        <l id="s10:l2" met="3" type="+-">Die u zulken <rhyme label="b" type="m">roof</rhyme>,</l>
        <l id="s10:l3" met="3" type="+-">Door de <rhyme label="a" type="f" corresp="#s10:l1">ketterijen</rhyme></l>
        <l id="s10:l4" met="3" type="+-">Deeden van ’t <rhyme label="b" type="m" corresp="#s10:l2">geloof</rhyme>!</l>
        <l id="s10:l5" met="3" type="+-">Of en kundje <rhyme label="c" type="f">merken</rhyme></l>
        <l id="s10:l6" met="3" type="+-">Niet uw’ eigen <rhyme label="d" type="m">vuil</rhyme>,</l>
        <l id="s10:l7" met="3" type="+-">Zoo vliegt mette <rhyme label="c" type="f" corresp="#s10:l5">vlerken</rhyme></l>
        <l id="s10:l8" met="3" type="+-">Vanden blinden <rhyme label="d" type="m" corresp="#s10:l6">uil</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
