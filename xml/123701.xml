    <tags/>
    <melody>Aan de oever van een snelle vliet</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Aan den oever van een snelle <rhyme label="a" type="m">vliet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Een treurend Meisje <rhyme label="b" type="m">zat</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Zij schreide en weende al van <rhyme label="a" type="m" corresp="#s1:l1">verdriet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Het gras met traantjes <rhyme label="b" type="m" corresp="#s1:l2">nat</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Zij wierp de bloempjes die zij <rhyme label="a" type="m">zag</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Mistroostig in den <rhyme label="b" type="m">stroom</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En riep: ach lieve vader! <rhyme label="a" type="m" corresp="#s2:l1">ach</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Ach lieve broeder <rhyme label="b" type="m" corresp="#s2:l2">koom</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een rijk Heer wandelde langs de <rhyme label="a" type="m">vliet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Bespeurd haar bittere <rhyme label="b" type="m">smart</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Toen hij het Meisje schreijen <rhyme label="a" type="m" corresp="#s3:l1">ziet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Brak zijn mededoogend <rhyme label="b" type="m" corresp="#s3:l2">hart</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wat scheeld er aan mijn lieve <rhyme label="a" type="m">Meid</rhyme>?</l>
        <l id="s4:l2" met="3" type="-+">Zeg 't mij en weest niet <rhyme label="b" type="m">schuw</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Zeg mij de reden waarom gij <rhyme label="a" type="m" corresp="#s4:l1">schreit</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Zoe ik kan zoo help ik <rhyme label="b" type="m" corresp="#s4:l2">u</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Zij ziet en kijkt hem treurend <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En zegt: o brave <rhyme label="b" type="m">man</rhyme>!</l>
        <l id="s5:l3" met="4" type="-+">Een arme wees ziet gij hier <rhyme label="a" type="m" corresp="#s5:l1">staan</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wien God slechts helpen <rhyme label="b" type="m" corresp="#s5:l2">kan</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ziet gij dat groene bergje <rhyme label="a" type="m">niet</rhyme>?</l>
        <l id="s6:l2" met="3" type="-+">Dat is mijn moeders <rhyme label="b" type="m">graf</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En aan den oever van deez' <rhyme label="a" type="m" corresp="#s6:l1">vliet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Daar, slipte mijn vader <rhyme label="b" type="m" corresp="#s6:l2">af</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Een snelle stroom verslont <rhyme label="a" type="m">weldra</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hem worstelend, ach! hij <rhyme label="b" type="m">zonk</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Mijn broeder sprong hem <rhyme label="a" type="m" corresp="#s7:l1">achterna</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Helaas! die ook <rhyme label="b" type="m" corresp="#s7:l2">verdronk</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nu vlugt ik steeds het Weeshuis <rhyme label="a" type="m">uit</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wanneer het rustuur <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Al met een oog dat droevig <rhyme label="a" type="m" corresp="#s8:l1">schreit</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Een hart vol <rhyme label="b" type="m" corresp="#s8:l2">droevenis</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Gij moet niet weenen, lieve <rhyme label="a" type="m">Meid</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">Uw hart verdiend geen <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Ik wil uw broeder en uw <rhyme label="a" type="m" corresp="#s9:l1">vriend</rhyme>!</l>
        <l id="s9:l4" met="3" type="-+">Ik wil uw vader <rhyme label="b" type="m" corresp="#s9:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hij vatte 't Meisje bij de <rhyme label="a" type="m">hand</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Om naar zijn huis te <rhyme label="b" type="m">gaan</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Hij deed haar kleederen naar zijn <rhyme label="a" type="m" corresp="#s10:l1">stand</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Voor weezen kleederen <rhyme label="b" type="m" corresp="#s10:l2">aan</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Zij at zijn spijs en dronk zijn <rhyme label="a" type="m">drank</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Gestadig dag aan <rhyme label="b" type="m">dag</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Hebt dank, o edele brave <rhyme label="a" type="m" corresp="#s11:l1">man</rhyme>!</l>
        <l id="s11:l4" met="3" type="-+">Voor uw zoo braaf <rhyme label="b" type="m" corresp="#s11:l2">gedrag</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
