    <melody>Herders hij is geboren</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOovaerdigheydt is 't <rhyme label="a" type="f">snootste</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat oyt de Reden <rhyme label="b" type="m">wist</rhyme></l>
        <l id="s1:l3" met="3" type="-+">De Reden is het <rhyme label="a" type="f" corresp="#s1:l1">grootste</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat met de hoovaerd <rhyme label="b" type="m" corresp="#s1:l2">twist</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Daer wijsheydt 't herte <rhyme label="c" type="m">raeckt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Daer wordt de kunst <rhyme label="c" type="m" corresp="#s1:l5">gemaeckt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Een Aep van de <rhyme label="d" type="m">Natuer</rhyme>:</l>
        <l id="s1:l8" met="3" type="-+">Siet, dat 's een vreemt <rhyme label="d" type="m" corresp="#s1:l7">bestuer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer als het hert <rhyme label="a" type="f">hoovaerdigh</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De hoogh-moed toont sijn <rhyme label="b" type="m">gunst</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo wordt in haest seer <rhyme label="a" type="f" corresp="#s2:l1">aerdigh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Natuer een Aep van <rhyme label="b" type="m" corresp="#s2:l2">Kunst</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">De wijsheydt seydt <rhyme label="c" type="m">bequaem</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Het kleedt moet na 't <rhyme label="c" type="m" corresp="#s2:l5">Lichaem</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">De hoogh-moed seydt, ick <rhyme label="d" type="m">sneed</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Het lichaem na mijn <rhyme label="d" type="m" corresp="#s2:l7">kleedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het is dan heel gheen <rhyme label="a" type="f">wonder</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat hy hem self niet <rhyme label="b" type="m">kent</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Wat daeghlicks schuylt hy <rhyme label="a" type="f" corresp="#s3:l1">onder</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Een kleedt, hem <rhyme label="b" type="m" corresp="#s3:l2">ongewent</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Gesonde Reden <rhyme label="c" type="m">baert</rhyme></l>
        <l id="s3:l6" met="3" type="-+">De schaemte om <rhyme label="c" type="m" corresp="#s3:l5">hoovaerd</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Maer hoogh-moed, die <rhyme label="d" type="m">betaemt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Hoovaerdigh sijn op <rhyme label="d" type="m" corresp="#s3:l7">schaemt</rhyme>.</l>
      </lg>
    </lg>
  </text>
