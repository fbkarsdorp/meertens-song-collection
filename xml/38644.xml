  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Recht soo de gulde <rhyme label="a" type="m">Son</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gheen weergay kan <rhyme label="b" type="f">verdraghen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Als't bleeck toen <rhyme label="a" type="m" corresp="#s1:l1">Phaeton</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die Iupiter <rhyme label="a" type="m" corresp="#s1:l1">verslon</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Die door sijn eyghen <rhyme label="c" type="m">raet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Wou voeren Phoebi <rhyme label="b" type="f" corresp="#s1:l2">waghen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Maer t'rouwt hem met de <rhyme label="c" type="m" corresp="#s1:l5">daet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Want hem den Godt <rhyme label="c" type="m" corresp="#s1:l5">verslaet</rhyme>:</l>
        <l id="s1:l9" met="3" type="-+">Ach soo ben ick schier <rhyme label="d" type="m">ghestelt</rhyme>!</l>
        <l id="s1:l10" met="3" type="-+">Om dat ick quam <rhyme label="e" type="f">ghenaecken</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Mijn Son dat schoonste <rhyme label="d" type="m" corresp="#s1:l9">beldt</rhyme>,</l>
        <l id="s1:l12" met="2" type="-+">Aen haere <rhyme label="e" type="f" corresp="#s1:l10">kaecken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Den blixem haers <rhyme label="a" type="m">ghesicht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die heeft mijn siel <rhyme label="b" type="f">versenghelt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ach onghenaeckbaer <rhyme label="a" type="m" corresp="#s2:l1">licht</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Daer schoonheyt self voor <rhyme label="a" type="m" corresp="#s2:l1">swicht</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">O wesen van <rhyme label="c" type="m">natuer</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Met straelen glans <rhyme label="b" type="f" corresp="#s2:l2">onenghelt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hoe valdy my soo <rhyme label="c" type="m" corresp="#s2:l5">stuer</rhyme>?</l>
        <l id="s2:l8" met="3" type="-+">Daer ick noch dach noch <rhyme label="c" type="m" corresp="#s2:l5">uer</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Rusten kan, die liefdens <rhyme label="d" type="m">gloet</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Die my de <rhyme label="e" type="f">binne-crachten</rhyme></l>
        <l id="s2:l11" met="3" type="+-">Verteirt, en mijn <rhyme label="d" type="m" corresp="#s2:l9">ghemoet</rhyme></l>
        <l id="s2:l12" met="2" type="-+">In min doet <rhyme label="e" type="f" corresp="#s2:l10">smachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe langh wreede <rhyme label="a" type="m">Goddin</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Sulde mijn hert <rhyme label="b" type="f">doorschieten</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Met pijlen vande <rhyme label="a" type="m" corresp="#s3:l1">min</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daer ick u hert noch <rhyme label="a" type="m" corresp="#s3:l1">sin</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Noyt kan door trouwen <rhyme label="c" type="m">dinst</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Oft wedergonst <rhyme label="b" type="f" corresp="#s3:l2">ghenieten</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">'Tis al verlies, gheen <rhyme label="c" type="m" corresp="#s3:l5">winst</rhyme>:</l>
        <l id="s3:l8" met="3" type="-+">Verkrijgh ick in het <rhyme label="c" type="m" corresp="#s3:l5">minst'</rhyme></l>
        <l id="s3:l9" met="3" type="-+">'Laes hoe ben ick niet <rhyme label="d" type="m">ontstelt</rhyme>?</l>
        <l id="s3:l10" met="3" type="-+">Die liefd heb <rhyme label="e" type="f">ingheswolghen</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Venus coomt met <rhyme label="d" type="m" corresp="#s3:l9">ghewelt</rhyme></l>
        <l id="s3:l12" met="2" type="-+">My te <rhyme label="e" type="f" corresp="#s3:l10">vervolghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
