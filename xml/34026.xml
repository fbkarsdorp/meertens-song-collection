  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">'T Is tijdt hem los te <rhyme label="a" type="f">maken</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Van 't Kruysse af te <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Paesch-tijdt begint te <rhyme label="a" type="f" corresp="#s1:l1">naken</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Joseph den Ridder <rhyme label="b" type="m" corresp="#s1:l2">koen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Heeft 't Lichaem van Pilaet <rhyme label="c" type="m">ontfaen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In een fijn linne <rhyme label="a" type="f" corresp="#s1:l1">laken</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Heeft hy 't eerlijk <rhyme label="c" type="m" corresp="#s1:l5">gedaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Met Salven <rhyme label="a" type="f">kostelijken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die Nicodemus <rhyme label="b" type="m">braght</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Gaen sy het Lichaem <rhyme label="a" type="f" corresp="#s2:l1">strijken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En leggen 't soo in 't <rhyme label="b" type="m" corresp="#s2:l2">graght</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Een yder om het droevighst' <rhyme label="c" type="m">schreyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">De vrouwen staen en <rhyme label="a" type="f" corresp="#s2:l1">kijken</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hoe hy daer wordt <rhyme label="c" type="m" corresp="#s2:l5">geleyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een groote sware <rhyme label="a" type="f">steene</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sy leggen op het <rhyme label="b" type="m">graght</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met jammerlijk <rhyme label="a" type="f" corresp="#s3:l1">geweene</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">'t Begint te worden <rhyme label="b" type="m" corresp="#s3:l2">naght</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Der Joden Sabbath die komt <rhyme label="c" type="m">aen</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">De Vrouwen spoeden <rhyme label="a" type="f" corresp="#s3:l1">heene</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Meer Salve koopen <rhyme label="c" type="m" corresp="#s3:l5">gaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De boose <rhyme label="a" type="f">Phariseën</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vermoeden nogh al <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die sijn nogh niet te <rhyme label="a" type="f" corresp="#s4:l1">vreën</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Dus gaen sy nae <rhyme label="b" type="m" corresp="#s4:l2">Pilaet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En hebben hem nogh eenen <rhyme label="c" type="m">daet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Met groot aenstaen <rhyme label="a" type="f" corresp="#s4:l1">gebeën</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Die hy haer ook <rhyme label="c" type="m" corresp="#s4:l5">toe-staet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dat hy 't graf souw <rhyme label="a" type="f">beveelen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Te seeg'len met 't <rhyme label="b" type="m">Signet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat niemandt hem moght <rhyme label="a" type="f" corresp="#s5:l1">steelen</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Sy hebben 't nogh <rhyme label="b" type="m" corresp="#s5:l2">beset</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Met frissche mannen sterk van <rhyme label="c" type="m">maght</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die moeten daer den <rhyme label="a" type="f" corresp="#s5:l1">heelen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Tijt, waken by het <rhyme label="c" type="m" corresp="#s5:l5">graght</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Houdt dan vry scharpe <rhyme label="a" type="f">waghte</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Godtloose wakers <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Want hy sal door sijn <rhyme label="a" type="f" corresp="#s6:l1">kraghte</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Verrijsen even <rhyme label="b" type="m" corresp="#s6:l2">wel</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Ten derden dagh, als 't is <rhyme label="c" type="m">voorseydt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Door sijn Godlijke <rhyme label="a" type="f" corresp="#s6:l1">maghte</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Die 's niet van hem <rhyme label="c" type="m" corresp="#s6:l5">gescheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
