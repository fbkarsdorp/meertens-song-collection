    <melody>Hoe lig ik hier in deze ellende</melody>
    <categories>
      <category translation="cycle of life">levenscyclus</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WY willen dees Bruyloft-Feest <rhyme label="a" type="f">houden</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Met vreught en blijtschap in den <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Niemant laet sijn harte <rhyme label="a" type="f" corresp="#s1:l1">verflouwen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als oft soo noyt hadde <rhyme label="b" type="m" corresp="#s1:l2">geweest</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Laban die liet een Bruyloft <rhyme label="c" type="f">bereyden</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Als hy Jacob Lea <rhyme label="c" type="f" corresp="#s1:l5">toe-leyde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Moses gaet IsraÃ«l oock <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Der geener die een Maeght <rhyme label="b" type="m">uyt-geeft</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat hy in Spijse, en <rhyme label="a" type="f" corresp="#s2:l1">Bruyloft-kleeren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Haer niet verkorte, maer <rhyme label="b" type="m" corresp="#s2:l2">beleeft</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ende behoorelijck moet <rhyme label="c" type="f">handelen</rhyme>:</l>
        <l id="s2:l6" met="4" type="-+">Laet ons in deught eerelijck <rhyme label="c" type="f" corresp="#s2:l5">wandelen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Simson liet met sijn Bruydt <rhyme label="a" type="f">toe-stellen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Een Bruyloft, soo men pleegh te <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Met mede-Speelinnen, en <rhyme label="a" type="f" corresp="#s3:l1">Gesellen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Maer een ontuchtigh wesen <rhyme label="b" type="m" corresp="#s3:l2">groen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">En wil ons ganschelijck niet <rhyme label="c" type="f">betamen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Maer stichtelijcke raetsels <rhyme label="c" type="f" corresp="#s3:l5">bequame</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als Simson sijn <rhyme label="a" type="f">Bruyloft-genooten</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Tot leeringe heeft <rhyme label="b" type="m">voort-gebracht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wilt malkander quetsen noch <rhyme label="a" type="f" corresp="#s4:l1">stooten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Maer neemt op goede leeringen <rhyme label="b" type="m" corresp="#s4:l2">acht</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Om dese Feest wel te <rhyme label="c" type="f">vercieren</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Met eer, lof, deught, en goe <rhyme label="c" type="f" corresp="#s4:l5">manieren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Tobias die en wilde niet <rhyme label="a" type="f">eeten</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Op 't Gast-mael van Raguel <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maer hy begeerde eerst te <rhyme label="a" type="f" corresp="#s5:l1">weten</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Of hy hem oock Sara <rhyme label="b" type="m" corresp="#s5:l2">toeseyt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Na die segeningh ende <rhyme label="c" type="f">trouwen</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Hebben sy de Bruyloft <rhyme label="c" type="f" corresp="#s5:l5">gehouwen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den Engel die ginck Naval te <rhyme label="a" type="f">nooden</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Nu ter Bruyloft te komen <rhyme label="b" type="m">daer</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hy wenschte sijn zegen, niet door <rhyme label="a" type="f" corresp="#s6:l1">booden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maer door hem selfs, dit lieve <rhyme label="b" type="m" corresp="#s6:l2">paer</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Sy hielden in Gods vrees met <rhyme label="c" type="f">vreughde</rhyme></l>
        <l id="s6:l6" met="4" type="-+">De Bruyloft met soete <rhyme label="c" type="f" corresp="#s6:l5">geneughde</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als Tobias wat langer <rhyme label="a" type="f">beyde</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Al door den Bruyloft, alst <rhyme label="b" type="m">behoort</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Soo is hy met zijn Bruydt <rhyme label="a" type="f" corresp="#s7:l1">gescheyden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Van 't geselschap, ende trock <rhyme label="b" type="m" corresp="#s7:l2">voort</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Sijn Ouders te stellen in <rhyme label="c" type="f">rusten</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En socht geen wereltsche <rhyme label="c" type="f" corresp="#s7:l5">lusten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De Heere Jesus gingh oock <rhyme label="a" type="f">vereeren</rhyme></l>
        <l id="s8:l2" met="4" type="-+">De Bruyloft tot Cana soo <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Hy deed' Water in Wijn <rhyme label="a" type="f" corresp="#s8:l1">verkeeren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Sijn eerste teecken hy hier <rhyme label="b" type="m" corresp="#s8:l2">doet</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Tot Godes prijs, minst ende <rhyme label="c" type="f">meeste</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Hou met vreughde sulcke <rhyme label="c" type="f" corresp="#s8:l5">Feeste</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Schout overvloet in eeten en <rhyme label="a" type="f">drincken</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">In kleeren en kost' lijck <rhyme label="b" type="m">gewaet</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Waer toe aen beyde zijden <rhyme label="a" type="f" corresp="#s9:l1">hincken</rhyme>?</l>
        <l id="s9:l4" met="4" type="-+">Dient Godt met hart, mondt en <rhyme label="b" type="m" corresp="#s9:l2">gelaet</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Ydel gesanck wilt altijdt <rhyme label="c" type="f">vlieden</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Looft Godt met Geestelijcke <rhyme label="c" type="f" corresp="#s9:l5">lieden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Als oock met Psalmen en <rhyme label="a" type="f">Lof-zangen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Na de eeuwige Bruyloft <rhyme label="b" type="m">soet</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Set uwe hart, sin, en <rhyme label="a" type="f" corresp="#s10:l1">verlangen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Verciert u met ware <rhyme label="b" type="m" corresp="#s10:l2">ootmoet</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Soo sult ghy namaels sijn <rhyme label="c" type="f">verheven</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Ende met Godt eeuwelijck <rhyme label="c" type="f" corresp="#s10:l5">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
