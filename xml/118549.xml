    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HUpsel, houdt u hups en <rhyme label="a" type="f">cierlijk</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dat gy, om uw hupsche <rhyme label="b" type="m">deugt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Waarlik hupsel heeten <rhyme label="b" type="m" corresp="#s1:l2">meugt</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Draagt u zedig en <rhyme label="a" type="f" corresp="#s1:l1">manierlik</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dat elk-een uw hupscheit <rhyme label="c" type="m">roem</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En van hups u hupsel <rhyme label="c" type="m" corresp="#s1:l5">noem</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Gaat geduerig hups te <rhyme label="a" type="f">kerken</rhyme>.</l>
        <l id="s2:l2" met="4" type="+-">Nergens is 't soo hups, als <rhyme label="b" type="m">daar</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Daar sal elk in 't <rhyme label="b" type="m" corresp="#s2:l2">openbaar</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Sien uw goed' en hupsche <rhyme label="a" type="f" corresp="#s2:l1">wercken</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">En Godt krijgt'er dies te <rhyme label="c" type="m">meer</rhyme></l>
        <l id="s2:l6" met="4" type="+-">T'saam van u en andren, <rhyme label="c" type="m" corresp="#s2:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Moet uw kerk-gank vlak door 't velt <rhyme label="a" type="f">zijn</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Dat men woest en eensaam <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Hebt daar in doch geen <rhyme label="b" type="m" corresp="#s3:l2">verdriet</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Want daar kont gy best verselt <rhyme label="a" type="f" corresp="#s3:l1">zijn</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Met den lieven Godt in 't <rhyme label="c" type="m">stil</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Na uws herten wensch en <rhyme label="c" type="m" corresp="#s3:l5">wil</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Daar kont gy u best <rhyme label="a" type="f">bereiden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Met gebeden en <rhyme label="b" type="m">gesmeek</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dat gy doch niet uit de <rhyme label="b" type="m" corresp="#s4:l2">preek</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Sonder voordeel weer meugt <rhyme label="a" type="f" corresp="#s4:l1">scheiden</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Wat al hulp geeft <rhyme label="c" type="m">Eensaamheit</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Als se wel wordt <rhyme label="c" type="m" corresp="#s4:l5">aangeleit</rhyme> ?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dies te vyer'ger en te <rhyme label="a" type="f">vryer</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Kan men bidden op een <rhyme label="b" type="m">oort</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Daar geen mensch ons siet of <rhyme label="b" type="m" corresp="#s5:l2">hoort</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">En hoe vrijer dan, hoe <rhyme label="a" type="f" corresp="#s5:l1">blijer</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Bruykt gy woorden of <rhyme label="c" type="m">gebaar</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Niemant en bespot die <rhyme label="c" type="m" corresp="#s5:l5">daar</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Jesus selfs socht hier <rhyme label="a" type="f">beneden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Dickwils sulk een vrije <rhyme label="b" type="m">stee</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En heeft in <rhyme label="b" type="m" corresp="#s6:l2">Gethsemane</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Eensaam, allersterkst <rhyme label="a" type="f" corresp="#s6:l1">gebeden</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Eensaamheit geeft geen <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Daar men 't hert voor Godt uit <rhyme label="c" type="m" corresp="#s6:l5">giet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Of, mishaagt u 't eensaam <rhyme label="a" type="f">wand'len</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Soo bescheidt of wacht <rhyme label="b" type="m">malkaar</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Om in 't vrije velt <rhyme label="b" type="m" corresp="#s7:l2">aldaar</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Van wat stichtliks t'saam te <rhyme label="a" type="f" corresp="#s7:l1">handelen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Soo als Jesus Jongren <rhyme label="c" type="m">deen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Daar hy self quam by haar <rhyme label="c" type="m" corresp="#s7:l5">treen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Woont gy schoon wat van de Kerk <rhyme label="a" type="f">af</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Schikt het, dat gy op uw <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s8:l3" met="4" type="+-">'s Achtermiddags daar weer <rhyme label="b" type="m" corresp="#s8:l2">zijt</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Maakt'er slechts gewoont en werk <rhyme label="a" type="f" corresp="#s8:l1">af</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Om u van uw disch te <rhyme label="c" type="m">spoen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">En met hemels kost te <rhyme label="c" type="m" corresp="#s8:l5">voen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Dan sal 't u gemakklik <rhyme label="a" type="f">vallen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Wat een aar met moeite <rhyme label="b" type="m">doet</rhyme>.</l>
        <l id="s9:l3" met="4" type="+-">Arbeidt wordt door lust <rhyme label="b" type="m" corresp="#s9:l2">versoet</rhyme>;</l>
        <l id="s9:l4" met="4" type="+-">En om 't beste deel van <rhyme label="a" type="f" corresp="#s9:l1">allen</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Schoon 't een dwaas niet agt noch <rhyme label="c" type="m">kent</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Mag wel vlijt zijn <rhyme label="c" type="m" corresp="#s9:l5">aangewendt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">'t Is mijn vreugt en <rhyme label="a" type="f">wel-behagen</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Dat ik somtijts u <rhyme label="b" type="m">besoek</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Hupsel, in u hupsche <rhyme label="b" type="m" corresp="#s10:l2">hoek</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">En sal nimmermeer <rhyme label="a" type="f" corresp="#s10:l1">vertragen</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Waar ik immer met het <rhyme label="c" type="m">mijn</rhyme></l>
        <l id="s10:l6" met="4" type="+-">U voortaan te dienst kan <rhyme label="c" type="m" corresp="#s10:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Schoon ik, als de dagen <rhyme label="a" type="f">korten</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">En de wegh wort vuil en <rhyme label="b" type="m">nat</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Kout en windig, weeck en <rhyme label="b" type="m" corresp="#s11:l2">gladt</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Mijne bykomst op moet <rhyme label="a" type="f" corresp="#s11:l1">schorten</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">'t Schort dan aan mijn liefde <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Maar aan tijt, gelijk gy <rhyme label="c" type="m" corresp="#s11:l5">siet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Eer ik op den dag des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Mijn gesette taak en <rhyme label="b" type="m">werk</rhyme></l>
        <l id="s12:l3" met="4" type="+-">Afgedaan hebb' in de <rhyme label="b" type="m" corresp="#s12:l2">kerk</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Siet men meest den dag <rhyme label="a" type="f" corresp="#s12:l1">passeren</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Soo 'k dan elders noch <rhyme label="c" type="m">verschijn</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">'t Moet niet al te verre <rhyme label="c" type="m" corresp="#s12:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Of ik selfs wel, sonder <rhyme label="a" type="f">schroomen</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Tegen weer en wint kan <rhyme label="b" type="m">staan</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">En door dik en dun wil <rhyme label="b" type="m" corresp="#s13:l2">gaan</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Om aldaer by u te <rhyme label="a" type="f" corresp="#s13:l1">komen</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Mijn geselschap schroomt'er <rhyme label="c" type="m">voor</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">En het kander soo niet <rhyme label="c" type="m" corresp="#s13:l5">door</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">'t Vreest voor al voor 't <rhyme label="a" type="f">overvallen</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Van des avond, mits de <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Ons al stillekens <rhyme label="b" type="m" corresp="#s14:l2">ontglijdt</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Als hy met een soet <rhyme label="a" type="f" corresp="#s14:l1">gevallen</rhyme></l>
        <l id="s14:l5" met="4" type="+-">Dus in Hupzel wordt <rhyme label="c" type="m">besteedt</rhyme>.</l>
        <l id="s14:l6" met="4" type="+-">'t Wordt dan duyster eer men 't <rhyme label="c" type="m" corresp="#s14:l5">weet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Maar zoo 'k somtijts hier of <rhyme label="a" type="f">ginder</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Meermaels dan in Hupsel <rhyme label="b" type="m">kom</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Mijne liefd' en is <rhyme label="b" type="m" corresp="#s15:l2">daarom</rhyme></l>
        <l id="s15:l4" met="4" type="+-">Tot u allen niet te <rhyme label="a" type="f" corresp="#s15:l1">minder</rhyme>.</l>
        <l id="s15:l5" met="4" type="+-">Komt de zoete tijt weer <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Dan moet gy voor andren <rhyme label="c" type="m" corresp="#s15:l5">gaan</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Denkt'et vry, dat mijn <rhyme label="a" type="f">verlangen</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Na u allen grooter <rhyme label="b" type="m">zy</rhyme></l>
        <l id="s16:l3" met="4" type="+-">Dan het uw oit is na <rhyme label="b" type="m" corresp="#s16:l2">my</rhyme>.</l>
        <l id="s16:l4" met="4" type="+-">Voelt g' uw hert aan my te <rhyme label="a" type="f" corresp="#s16:l1">hangen</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">'t Mijne hangt aan u ook <rhyme label="c" type="m">weer</rhyme>,</l>
        <l id="s16:l6" met="4" type="+-">En misschien al vry wat <rhyme label="c" type="m" corresp="#s16:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Kan mijn komst u oit <rhyme label="a" type="f">verblijden</rhyme>,</l>
        <l id="s17:l2" met="4" type="+-">Komt, als d'ander buerten <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">Dan ook vaardig tot my <rhyme label="b" type="m" corresp="#s17:l2">spoen</rhyme>,</l>
        <l id="s17:l4" met="4" type="+-">En vloeit toe van allen <rhyme label="a" type="f" corresp="#s17:l1">zijden</rhyme>,</l>
        <l id="s17:l5" met="4" type="+-">Dat wy t'samen vroolijck <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">Ik door 't uw', en gy door 't <rhyme label="c" type="m" corresp="#s17:l5">mijn</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Neemt mijn Boekjes t'saam in dank <rhyme label="a" type="f">aan</rhyme>.</l>
        <l id="s18:l2" met="4" type="+-">Isser onder u een <rhyme label="b" type="m">man</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Die daar uit iet lesen <rhyme label="b" type="m" corresp="#s18:l2">kan</rhyme>,</l>
        <l id="s18:l4" met="4" type="+-">Schikt u by hem op de bank <rhyme label="a" type="f" corresp="#s18:l1">aan</rhyme>,</l>
        <l id="s18:l5" met="4" type="+-">En hoort toe; of singt te <rhyme label="c" type="m">saam</rhyme>,</l>
        <l id="s18:l6" met="4" type="+-">Zijt gy daar toe ook <rhyme label="c" type="m" corresp="#s18:l5">bequaam</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Of men juist geen fraye stem <rhyme label="a" type="f">heeft</rhyme>,</l>
        <l id="s19:l2" met="4" type="+-">'t Komt daar op by Godt niet <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">Die het herte kan <rhyme label="b" type="m" corresp="#s19:l2">verstaan</rhyme>,</l>
        <l id="s19:l4" met="4" type="+-">Dat de meeste kracht en klem <rhyme label="a" type="f" corresp="#s19:l1">heeft</rhyme>.</l>
        <l id="s19:l5" met="4" type="+-">Doet uw beste by <rhyme label="c" type="m">malkaar</rhyme>,</l>
        <l id="s19:l6" met="4" type="+-">Met het een gesank op 't <rhyme label="c" type="m" corresp="#s19:l5">aar</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Laat het, als een regen, <rhyme label="a" type="f">druppen</rhyme></l>
        <l id="s20:l2" met="4" type="+-">Op uw zielen <rhyme label="b" type="m">allermeest</rhyme>.</l>
        <l id="s20:l3" met="4" type="+-">'t Hert, ontsteken door Godts <rhyme label="b" type="m" corresp="#s20:l2">Geest</rhyme>,</l>
        <l id="s20:l4" met="4" type="+-">Sal my ook in Hupsel <rhyme label="a" type="f" corresp="#s20:l1">huppen</rhyme>,</l>
        <l id="s20:l5" met="4" type="+-">En opspringen van <rhyme label="c" type="m">geneugt</rhyme>.</l>
        <l id="s20:l6" met="4" type="+-">Wel bekom' ons dese <rhyme label="c" type="m" corresp="#s20:l5">vreugt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
