  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">KOmt nu mijn lieve <rhyme label="a" type="f">Vrinden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die Bacchus oyt <rhyme label="a" type="f" corresp="#s1:l1">beminden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En weest met ons <rhyme label="b" type="m">verblijdt</rhyme>;</l>
        <l id="s1:l4" met="4" type="-+">VVant het is nu den rechten <rhyme label="b" type="m" corresp="#s1:l3">tydt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">U hert tot ons waerts <rhyme label="c" type="m">stiert</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Den vasten avondt <rhyme label="c" type="m" corresp="#s1:l5">viert</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">En dat het gelasken <rhyme label="c" type="m" corresp="#s1:l5">swiert</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Laet vry een Kroesken <rhyme label="a" type="f">schencken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En hebt geen achter <rhyme label="a" type="f" corresp="#s2:l1">dencken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ten can geen hinder <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Want het is nu al naer den <rhyme label="b" type="m" corresp="#s2:l3">noen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Sa voeght u by het <rhyme label="c" type="m">vier</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Want isser meer <rhyme label="c" type="m" corresp="#s2:l5">plesier</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Als drincken dit Lovens <rhyme label="c" type="m" corresp="#s2:l5">bier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een Pypken tot <rhyme label="a" type="f">verfrayen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met Toeback vol <rhyme label="a" type="f" corresp="#s3:l1">gelayen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">En doet hier geen <rhyme label="b" type="m">belet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">VVant de fantasy <rhyme label="b" type="m" corresp="#s3:l3">verset</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Daerom vrymoedigh <rhyme label="c" type="m">smoort</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En ondertusschen <rhyme label="c" type="m" corresp="#s3:l5">hoort</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Een Liedt singhen tot <rhyme label="c" type="m" corresp="#s3:l5">accoort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Al sijn daer viese <rhyme label="a" type="f">geesten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die seggen 't sijn maer <rhyme label="a" type="f" corresp="#s4:l1">beesten</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die sulcken saeck <rhyme label="b" type="m">begaen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dacrom laet het niet <rhyme label="b" type="m" corresp="#s4:l3">gedaen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Maer lacht hun vrylijck <rhyme label="c" type="m">uyt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En met een teugh <rhyme label="c" type="m" corresp="#s4:l5">besluyt</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Hun kaeck'len voor een <rhyme label="c" type="m" corresp="#s4:l5">kluyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">VVat sal een vreckaert <rhyme label="a" type="f">erven</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wanneer hy komt te <rhyme label="a" type="f" corresp="#s5:l1">sterven</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Niet anders als het <rhyme label="b" type="m">graff</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">Daerom laet de vreckheyt <rhyme label="b" type="m" corresp="#s5:l3">aff</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">VVat helpt hem gelt, oft <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">VVant hy dogh sterven <rhyme label="c" type="m" corresp="#s5:l5">moet</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">En wy geene vreught meer <rhyme label="c" type="m" corresp="#s5:l5">boet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Weest vrolijck dan <rhyme label="a" type="f">gesellen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En wilt u hooft niet <rhyme label="a" type="f" corresp="#s6:l1">quellen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat gy de droefheyt <rhyme label="b" type="m">plant</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maer doet Bacchus <rhyme label="b" type="m" corresp="#s6:l3">onderstant</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Die ons laet vrolijck <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Door 't geven vanden <rhyme label="c" type="m" corresp="#s6:l5">wyn</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">En dryft van ons 't <rhyme label="c" type="m" corresp="#s6:l5">gequyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die Bacchus dan <rhyme label="a" type="f">beminnen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Met Ceres wilt <rhyme label="a" type="f" corresp="#s7:l1">beginnen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat is den besten <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die bevryden ons van't <rhyme label="b" type="m" corresp="#s7:l3">quaet</rhyme></l>
        <l id="s7:l5" met="3" type="-+">En van veel <rhyme label="c" type="m">droevesmert</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Want 't is door hun dat <rhyme label="c" type="m" corresp="#s7:l5">wert</rhyme></l>
        <l id="s7:l7" met="4" type="+-">En versterckt naer lust ons <rhyme label="c" type="m" corresp="#s7:l5">hert</rhyme>.</l>
      </lg>
    </lg>
  </text>
