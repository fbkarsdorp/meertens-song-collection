  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">Een man die <rhyme label="a" type="m">slegts</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Een daalder <rhyme label="b" type="m">wind</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Een kroon <rhyme label="b" type="m" corresp="#s1:l2">verslind</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Als hy dan zwiert by <rhyme label="c" type="m">nacht</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">En dan niet werkt by <rhyme label="c" type="m" corresp="#s1:l4">dag</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dan word het wyf zoo duivels <rhyme label="d" type="m">kwaad</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Dat zy hem met de bezem <rhyme label="d" type="m" corresp="#s1:l6">slaat</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">'t Is waar hy <rhyme label="a" type="m">bromt</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Dan ieder <rhyme label="b" type="m">keer</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Gelyk een <rhyme label="b" type="m" corresp="#s2:l2">Beer</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Als hy dan zwiert by <rhyme label="c" type="m">nacht</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">En slaat zyn wyf by <rhyme label="c" type="m" corresp="#s2:l4">dag</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dan zeid zy schelm wat doet gy <rhyme label="d" type="m">kwaad</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Dat gy by nagt uit krollen <rhyme label="d" type="m" corresp="#s2:l6">gaat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">'k Min liefst een <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Die vriendelyk <rhyme label="b" type="m">lagt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En houd by zyn vrouw de <rhyme label="b" type="m" corresp="#s3:l2">wagt</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Die kust en streeld <rhyme label="c" type="m">gewis</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Als hy by zyn wyfje <rhyme label="c" type="m" corresp="#s3:l4">is</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Zodanig man geloof dat <rhyme label="d" type="m">vry</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Dat is de regte man voor <rhyme label="d" type="m" corresp="#s3:l6">my</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Hy is zoo <rhyme label="a" type="m">lief</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Zoo <rhyme label="b" type="m">aangenaam</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En hy is voor zyn werk <rhyme label="b" type="m" corresp="#s4:l2">bekwaam</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Hy doet zyn werk met <rhyme label="c" type="m">vlyt</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Loopt met geen andere <rhyme label="c" type="m" corresp="#s4:l4">meid</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Hy is verheugd gelooft my <rhyme label="d" type="m">vry</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Zodanig man is net voor <rhyme label="d" type="m" corresp="#s4:l6">my</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="+-">Gewis hy <rhyme label="a" type="m">houd</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Hem maar by <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Maar loopt niet met een yder <rhyme label="b" type="m" corresp="#s5:l2">een</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Hy doet zyn werk met <rhyme label="c" type="m">spoed</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Gelyk een braaf man <rhyme label="c" type="m" corresp="#s5:l4">doet</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Zodanig man gelooft dat <rhyme label="d" type="m">vry</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Dat is de regte man voor <rhyme label="d" type="m" corresp="#s5:l6">my</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="+-">Dan kend de <rhyme label="a" type="m">vrouw</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">En weet haar <rhyme label="b" type="m">pligt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">'t Geen wat 'er moet zyn <rhyme label="b" type="m" corresp="#s6:l2">verrigt</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Dan leeft men vry en <rhyme label="c" type="m">bly</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">Zet alles aan een <rhyme label="c" type="m" corresp="#s6:l4">zy</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Dan is de man en vrouw <rhyme label="d" type="m">verblyd</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Leeft zonder zorg en <rhyme label="d" type="m" corresp="#s6:l6">droefheid</rhyme>.</l>
      </lg>
    </lg>
  </text>
