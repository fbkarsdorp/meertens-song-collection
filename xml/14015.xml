  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Cupid', onlanx <rhyme label="a" type="m">gele'en</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Quam recht naar Vriesland <rhyme label="a" type="m" corresp="#s1:l1">tre'en</rhyme>,</l>
        <l id="s1:l3" met="6" type="+-">Hy verliet, vol verdriet, gansch <rhyme label="b" type="f">Griecken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En koos ons land <rhyme label="a" type="m" corresp="#s1:l1">alleen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Daer quam het Boefjen <rhyme label="c" type="m">doe</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Verheughd en wel te <rhyme label="c" type="m" corresp="#s1:l5">moe</rhyme>,</l>
        <l id="s1:l7" met="6" type="+-">'t Had een boogh, en het vloogh met syn <rhyme label="b" type="f" corresp="#s1:l3">wieken</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Recht naer myn liefste <rhyme label="c" type="m" corresp="#s1:l5">toe</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Voor deur sagh hy haer <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Haer glans stond hem strax <rhyme label="a" type="m" corresp="#s2:l1">aen</rhyme>,</l>
        <l id="s2:l3" met="6" type="+-">Dies was hy, dapper bly: maer die <rhyme label="b" type="f">Bengel</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Woud nader by haer <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Hy maeckten hem seer <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Syn hayr gelijck een <rhyme label="c" type="m" corresp="#s2:l5">kroon</rhyme></l>
        <l id="s2:l7" met="6" type="+-">Van fyn gold, stond gekrold, 't scheen een <rhyme label="b" type="f" corresp="#s2:l3">Engel</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Gedaeld van Jovis <rhyme label="c" type="m" corresp="#s2:l5">Throon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Doen stack die kleyne <rhyme label="a" type="m">guyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sijn beentjen achter <rhyme label="a" type="m" corresp="#s3:l1">uyt</rhyme>;</l>
        <l id="s3:l3" met="6" type="+-">En hy groet, met ootmoet, myn <rhyme label="b" type="f">schone</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Mijn lang gewenschte <rhyme label="a" type="m" corresp="#s3:l1">Bruyt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">En doelden voort om <rhyme label="c" type="m">hoogh</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Naer haer uytmuntend <rhyme label="c" type="m" corresp="#s3:l5">oogh</rhyme>,</l>
        <l id="s3:l7" met="6" type="+-">Daer hy in, met de min, dacht te <rhyme label="b" type="f" corresp="#s3:l3">woonen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Maer 't Boefjen hem <rhyme label="c" type="m" corresp="#s3:l5">bedroogh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy sagh het vlammend <rhyme label="a" type="m">licht</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van Galatees <rhyme label="a" type="m" corresp="#s4:l1">gesicht</rhyme>,</l>
        <l id="s4:l3" met="6" type="+-">Dies hy lacht, en hy dacht, dat daer <rhyme label="b" type="f">binnen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">De hette wierd <rhyme label="a" type="m" corresp="#s4:l1">gesticht</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Maer hy vond <rhyme label="c" type="m">Galatee</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Gelycker ys en <rhyme label="c" type="m" corresp="#s4:l5">snee</rhyme>,</l>
        <l id="s4:l7" met="6" type="+-">Ja soo koel, dat gevoel, van de <rhyme label="b" type="f" corresp="#s4:l3">minne</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Daer gansch geen werking <rhyme label="c" type="m" corresp="#s4:l5">dee</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dies vloogh hy vol <rhyme label="a" type="m">gevaer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Anxtvalligh weer van <rhyme label="a" type="m" corresp="#s5:l1">daer</rhyme>,</l>
        <l id="s5:l3" met="6" type="+-">So beschreumd, en verkleumd, dat hy <rhyme label="b" type="f">lette</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Of hy versturven <rhyme label="a" type="m" corresp="#s5:l1">waer</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">En kroop strax in de <rhyme label="c" type="m">brand</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Van myn heet <rhyme label="c" type="m" corresp="#s5:l5">ingewand</rhyme>,</l>
        <l id="s5:l7" met="6" type="+-">Daer het dier, so veel vyer, so veel <rhyme label="b" type="f" corresp="#s5:l3">hette</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En so veel vlammen <rhyme label="c" type="m" corresp="#s5:l5">vand</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dat hy al eer hy 't <rhyme label="a" type="m">wist</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Daer beyd syn vleugels <rhyme label="a" type="m" corresp="#s6:l1">mist</rhyme>,</l>
        <l id="s6:l3" met="6" type="+-">Die de vlam, van hem nam, door het <rhyme label="b" type="f">blaken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Midts hy hem had <rhyme label="a" type="m" corresp="#s6:l1">vergist</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Daer leyd hy nu en <rhyme label="c" type="m">swerfd</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Tot ick of hy 't <rhyme label="c" type="m" corresp="#s6:l5">besterfd</rhyme>:</l>
        <l id="s6:l7" met="6" type="+-">Want hy kan, daer niet van <rhyme label="b" type="f" corresp="#s6:l3">geraken</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Mids hy syn vleugels <rhyme label="c" type="m" corresp="#s6:l5">derfd</rhyme>.</l>
      </lg>
    </lg>
  </text>
