  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IC heb heer Ihesum <rhyme label="a" type="m">wtuercoren</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Hi heeft mi eerst bemint te <rhyme label="a" type="m" corresp="#s1:l1">voren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ic en wils niet laten <rhyme label="b" type="f">varen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ick wilde hi mijn herte had <rhyme label="c" type="m">ghewont</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Met sijnder minnen <rhyme label="b" type="f" corresp="#s1:l3">strale</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sij crighen veel vruchten dat weten si <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die Iesum minnen die hebben goet <rhyme label="a" type="m" corresp="#s2:l1">spel</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Des weder si wel <rhyme label="b" type="f">gheware</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Als hi dat herte heeft <rhyme label="c" type="m">gheraect</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Dan quelen si der minnen <rhyme label="b" type="f" corresp="#s2:l3">quale</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Te quelen inder minnen <rhyme label="a" type="m">vier</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat is noch metten somigen <rhyme label="a" type="m" corresp="#s3:l1">dier</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Wij moghen wel Gode <rhyme label="b" type="f">louen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Ick hope dat beter wesen <rhyme label="c" type="m">sal</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Die begeerte gaet te <rhyme label="b" type="f" corresp="#s3:l3">bouen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O here mocht ic v gheuen <rhyme label="a" type="m">lof</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Daer bouen in dat hemels <rhyme label="a" type="m" corresp="#s4:l1">hof</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Na alle mijns herten <rhyme label="b" type="f">wille</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Mi dunct ic gaue v meerder <rhyme label="c" type="m">lof</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dan alle die <rhyme label="b" type="f" corresp="#s4:l3">seraphinnen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die seraphinnen sijn hooghe <rhyme label="a" type="m">verheuen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Brandende minne is alle haer <rhyme label="a" type="m" corresp="#s5:l1">leuen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Ick ligghe in dese <rhyme label="b" type="f">allinden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">O here alst uwen wille <rhyme label="c" type="m">belieft</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Dan suldy mi wel <rhyme label="b" type="f" corresp="#s5:l3">ontbinden</rhyme></l>
      </lg>
    </lg>
  </text>
