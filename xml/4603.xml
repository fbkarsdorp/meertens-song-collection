    <tags/>
    <melody>Verdwaalde koningin</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Rechter der <rhyme label="a" type="f">geschillen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die ons het Pausdom <rhyme label="b" type="m">liegt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Kan ons gemoed niet <rhyme label="a" type="f" corresp="#s1:l1">stil-len</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Want al-le mensch <rhyme label="b" type="m" corresp="#s1:l2">bedriegt</rhyme>//</l>
        <l id="s1:l5" met="2" type="-+">Het moet dan <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Na Ian <rhyme label="c" type="m" corresp="#s1:l5">Calvijn</rhyme>//</l>
        <l id="s1:l7" met="3" type="-+">Ons wel heeft <rhyme label="d" type="f">onderwezen</rhyme>//</l>
        <l id="s1:l8" met="2" type="-+">Goods woord <rhyme label="e" type="m">alleyn</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Zoo ’t puir en <rhyme label="e" type="m" corresp="#s1:l8">reyn</rhyme>//</l>
        <l id="s1:l10" met="3" type="-+">VVerd in de schrift <rhyme label="d" type="f" corresp="#s1:l7">gelezen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Fijn Man! ghy zoukt te <rhyme label="a" type="f">kijven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Gestaedig, Nae’k <rhyme label="b" type="m">bemerk</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En daerom wildy <rhyme label="a" type="f" corresp="#s2:l1">blijven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Vw’ twisten aen geen <rhyme label="b" type="m" corresp="#s2:l2">Kerk</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Ghy leest de <rhyme label="c" type="m">schrift</rhyme>//</l>
        <l id="s2:l6" met="2" type="-+">Naer eigen <rhyme label="c" type="m" corresp="#s2:l5">drift</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Maer dit is ons van <rhyme label="d" type="f">Gode</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Door Petrus <rhyme label="e" type="m">mond</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Van d’eerste <rhyme label="e" type="m" corresp="#s2:l8">stond</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Des Christendoms, <rhyme label="d" type="f" corresp="#s2:l7">verboden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">God is alleen <rhyme label="a" type="f">waerachtig</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">’t Is waer. Ik stemt u <rhyme label="b" type="m">toe</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">De mensche <rhyme label="a" type="f" corresp="#s3:l1">leugenachtich</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Zoo Paulus zeyd; Maer <rhyme label="b" type="m" corresp="#s3:l2">hoe</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Verkoren <rhyme label="c" type="m">Man</rhyme>.</l>
        <l id="s3:l6" met="2" type="-+">Werd ghy luy <rhyme label="c" type="m" corresp="#s3:l5">dan</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Geteld ook voor geen <rhyme label="d" type="f">menschen</rhyme>?</l>
        <l id="s3:l8" met="2" type="-+">Voorwaer een <rhyme label="e" type="m">deel</rhyme>//</l>
        <l id="s3:l9" met="2" type="-+">Niet dan te <rhyme label="e" type="m" corresp="#s3:l8">veel</rhyme>//</l>
        <l id="s3:l10" met="3" type="-+">Het blijkt wel aende <rhyme label="d" type="f" corresp="#s3:l7">pensen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer ’t sijn niet dan de <rhyme label="a" type="f">woorden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Des Heeren die ghy <rhyme label="b" type="m">duidt</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">‘T is zoo: maer zulks als <rhyme label="a" type="f" corresp="#s4:l1">d’oorde</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Des nieuwen Tempels <rhyme label="b" type="m" corresp="#s4:l2">luydt</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Of zeker <rhyme label="c" type="m">legt</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Ghy zoo ghy <rhyme label="c" type="m" corresp="#s4:l5">zegt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">’t Een hooftstuck uit door ’t <rhyme label="d" type="f">ander</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Hoe feilt en <rhyme label="e" type="m">mist</rhyme></l>
        <l id="s4:l9" met="2" type="-+">Hoe kijft en <rhyme label="e" type="m" corresp="#s4:l8">twist</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Ghy noch zoo met <rhyme label="d" type="f" corresp="#s4:l7">malkander</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De rechters moeten <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s5:l2" met="3" type="-+">(Dit brengt de rede <rhyme label="b" type="m">met</rhyme>)</l>
        <l id="s5:l3" met="3" type="-+">Die vonnis zullen <rhyme label="a" type="f" corresp="#s5:l1">geven</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Op een beschreve <rhyme label="b" type="m" corresp="#s5:l2">wet</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">In <rhyme label="c" type="m">zonderheyd</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Als haer <rhyme label="c" type="m" corresp="#s5:l5">bescheyd</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Is duyster; En <rhyme label="d" type="f">partyen</rhyme></l>
        <l id="s5:l8" met="2" type="-+">In woord’ en <rhyme label="e" type="m">werk</rhyme>,</l>
        <l id="s5:l9" met="2" type="-+">Al even <rhyme label="e" type="m" corresp="#s5:l8">sterk</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Malkanderen <rhyme label="d" type="f" corresp="#s5:l7">bestrijen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Vw’ voorslag, recht een kuir <rhyme label="a" type="f">is</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">End’ even van <rhyme label="b" type="m">gevoel</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Als of men ’t Corpus <rhyme label="a" type="f" corresp="#s6:l1">Iuris</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ging leggen op een <rhyme label="b" type="m" corresp="#s6:l2">Stoel</rhyme>;</l>
        <l id="s6:l5" met="2" type="-+">En zey; Daer <rhyme label="c" type="m">leyt</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Al ’t geen ons <rhyme label="c" type="m" corresp="#s6:l5">scheyd</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Weg met all’ d’ander <rhyme label="d" type="f">Rechters</rhyme>!</l>
        <l id="s6:l8" met="2" type="-+">Wat dunkt u: <rhyme label="e" type="m">waer</rhyme></l>
        <l id="s6:l9" met="2" type="-+">Dit niet wel <rhyme label="e" type="m" corresp="#s6:l8">naer</rhyme></l>
        <l id="s6:l10" met="3" type="-+">’t Behagen vande <rhyme label="d" type="f" corresp="#s6:l7">vechters</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Och, jaet in alder <rhyme label="a" type="f">vougen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Want ellijck zou de <rhyme label="b" type="m">zin</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Der wetten, nae ’t <rhyme label="a" type="f" corresp="#s7:l1">genougen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Verstaen van zijn <rhyme label="b" type="m" corresp="#s7:l2">ghewin</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">En stellen ’t <rhyme label="c" type="m">recht</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Int baer <rhyme label="c" type="m" corresp="#s7:l5">gevecht</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Met onverzoende <rhyme label="d" type="f">twisten</rhyme>.</l>
        <l id="s7:l8" met="2" type="-+">In aslle <rhyme label="e" type="m">schijn</rhyme></l>
        <l id="s7:l9" met="2" type="-+">Gelijk <rhyme label="e" type="m" corresp="#s7:l8">Calvijn</rhyme></l>
        <l id="s7:l10" met="3" type="-+">Doed met de <rhyme label="d" type="f" corresp="#s7:l7">Martinisten</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maer dit en brengt de <rhyme label="a" type="f">vrede</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van Christus lieve <rhyme label="b" type="m">wet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">In geender wyzen <rhyme label="a" type="f" corresp="#s8:l1">mede</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Des hy zijn Kerk <rhyme label="b" type="m" corresp="#s8:l2">gezet</rhyme></l>
        <l id="s8:l5" met="2" type="-+">Heeft tot een <rhyme label="c" type="m">bank</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Van <rhyme label="c" type="m" corresp="#s8:l5">Rechts-bedwank</rhyme>.</l>
        <l id="s8:l7" met="3" type="-+">Daer onder dat zou <rhyme label="d" type="f">buigen</rhyme></l>
        <l id="s8:l8" met="2" type="-+">’t Eenvoudig <rhyme label="e" type="m">hoofd</rhyme></l>
        <l id="s8:l9" met="2" type="-+">Al die <rhyme label="e" type="m" corresp="#s8:l8">gelooft</rhyme>.</l>
        <l id="s8:l10" met="3" type="-+">Naer ons d’Apost’len <rhyme label="d" type="f" corresp="#s8:l7">tuigen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dus keurde <rhyme label="a" type="f">t’alver-mogen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En t’wel-behagen <rhyme label="b" type="m">Goods</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Die tot een <rhyme label="a" type="f" corresp="#s9:l1">onbewogen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Pilaer, en vaste <rhyme label="b" type="m" corresp="#s9:l2">Roots</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Zijn Kerk <rhyme label="c" type="m">gesteld</rhyme></l>
        <l id="s9:l6" met="2" type="-+">Heeft op ’t <rhyme label="c" type="m" corresp="#s9:l5">geweld</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Van d’ Acheronse <rhyme label="d" type="f">wallen</rhyme>.</l>
        <l id="s9:l8" met="2" type="-+">Op dat haer <rhyme label="e" type="m">leer</rhyme></l>
        <l id="s9:l9" met="2" type="-+">Zou <rhyme label="e" type="m" corresp="#s9:l8">nimmermeer</rhyme></l>
        <l id="s9:l10" met="3" type="-+">Van ’t recht Geloof <rhyme label="d" type="f" corresp="#s9:l7">vervallen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">’t Is deze dan, ’t is <rhyme label="a" type="f">deze</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Die als een Rechter <rhyme label="b" type="m">wijst</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">Zoo dat moet zijn <rhyme label="a" type="f" corresp="#s10:l1">gepresen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Al ’t geen haer oordeel <rhyme label="b" type="m" corresp="#s10:l2">prijst</rhyme>.</l>
        <l id="s10:l5" met="2" type="-+">En ook <rhyme label="c" type="m">gelaekt</rhyme>,</l>
        <l id="s10:l6" met="2" type="-+">Al ’t geen ze <rhyme label="c" type="m" corresp="#s10:l5">wraekt</rhyme>.</l>
        <l id="s10:l7" met="3" type="-+">En die haer recht durft <rhyme label="d" type="f">schennen</rhyme>,</l>
        <l id="s10:l8" met="2" type="-+">Zal Christus <rhyme label="e" type="m">voor</rhyme></l>
        <l id="s10:l9" met="2" type="-+">Het Eng’le <rhyme label="e" type="m" corresp="#s10:l8">choor</rhyme></l>
        <l id="s10:l10" met="3" type="-+">Voor geen gelovig <rhyme label="d" type="f" corresp="#s10:l7">kennen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
