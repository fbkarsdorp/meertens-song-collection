<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>185907</id>
    <date>
      <year-start>1790</year-start>
      <year-end>1790</year-end>
    </date>
    <location>
      <orginal-name>amsterdam</orginal-name>
      <standard-name>Amsterdam, The Netherlands</standard-name>
      <coordinates>
        <lon>52.3745403</lon>
        <lat>4.89797550561798</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Zie hoe gelukkig zijn ze dan</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O God! Wat yselyke <rhyme label="a" type="m">maer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Word ons nu weer <rhyme label="b" type="f">beschreven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Daer is in duizend <rhyme label="a" type="m" corresp="#s1:l1">jaer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Geen wreeder stuk <rhyme label="c" type="m">gebeurd</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wie 't hoord zyn hart dat <rhyme label="c" type="m" corresp="#s1:l4">treurt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Van rouw in stukken <rhyme label="c" type="m" corresp="#s1:l4">scheurd</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Tot Doeveren in <rhyme label="a" type="m">Engeland</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Woonden een ryken <rhyme label="b" type="f">Kuiper</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Begaeft met goed <rhyme label="a" type="m" corresp="#s2:l1">verstant</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Een deugdsaem schoone <rhyme label="c" type="m">Vrouw</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">In liefde en in <rhyme label="c" type="m" corresp="#s2:l4">trouw</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sy had geen druk of <rhyme label="c" type="m" corresp="#s2:l4">rouw</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Eilaes! dit duurt een korten <rhyme label="a" type="m">tyd</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Want den Satan vol <rhyme label="b" type="f">listen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">En zwarten haet en <rhyme label="a" type="m" corresp="#s3:l1">nyd</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Misgund dit jonge <rhyme label="c" type="m">Paer</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Haer vreugde by te <rhyme label="c" type="m" corresp="#s3:l4">gaer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat hun bragt in <rhyme label="c" type="m" corresp="#s3:l4">gevaer</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Zyn moeder woonde by hem in <rhyme label="a" type="m">huis</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hoord wat zy gaet <rhyme label="b" type="f">beginnen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Door duivels hel <rhyme label="a" type="m" corresp="#s4:l1">gespuis</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Zy sprak myn Zoon, ag! <rhyme label="c" type="m">ag</rhyme>!</l>
        <l id="s4:l5" met="3" type="-+">Ik wel beklagen <rhyme label="c" type="m" corresp="#s4:l4">mag</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Het uur van u <rhyme label="c" type="m" corresp="#s4:l4">Trouwdag</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dit woord sprak zy verscheide <rhyme label="a" type="m">mael</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Altyd met zware <rhyme label="b" type="f">zugte</rhyme></l>
        <l id="s5:l3" met="3" type="-+">En een bedroefde <rhyme label="a" type="m" corresp="#s5:l1">tael</rhyme>!</l>
        <l id="s5:l4" met="3" type="-+">Op 't letst den Zoon met <rhyme label="c" type="m">vlyt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Dan tot zyn moeder <rhyme label="c" type="m" corresp="#s5:l4">zeid</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Waerom is 't dat gy <rhyme label="c" type="m" corresp="#s5:l4">schreid</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Zy sprak eilaes! myn waerde <rhyme label="a" type="m">kind</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ik mag met regt wel <rhyme label="b" type="f">zeggen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Dat gy zyt ziende <rhyme label="a" type="m" corresp="#s6:l1">blind</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Gy hebt een schoone <rhyme label="c" type="m">vrouw</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Maer ik vrees dat die <rhyme label="c" type="m" corresp="#s6:l4">trouw</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">U zal brengen in <rhyme label="c" type="m" corresp="#s6:l4">rouw</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy sprak ag waerde moeder <rhyme label="a" type="m">myn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Wat mag hier van de <rhyme label="b" type="f">reden</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Of wel de oorzaek <rhyme label="a" type="m" corresp="#s7:l1">zyn</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Ik heb een deugdzaem <rhyme label="c" type="m">vrouw</rhyme></l>
        <l id="s7:l5" met="3" type="-+">En zy is myn <rhyme label="c" type="m" corresp="#s7:l4">getrouw</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Maer zy antwoorden <rhyme label="c" type="m" corresp="#s7:l4">gou</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De eer en lof die gy haer <rhyme label="a" type="m">geeft</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die word van haer <rhyme label="b" type="f">misbruikt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">En slegtelyk <rhyme label="a" type="m" corresp="#s8:l1">beleeft</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Zy is een ligte <rhyme label="c" type="m">bant</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Een schandvlek in ons <rhyme label="c" type="m" corresp="#s8:l4">land</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Door haer raekt gy in <rhyme label="c" type="m" corresp="#s8:l4">schand</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dit viel hem als een steen op 't <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Daer door zyn zinnen <rhyme label="b" type="f">dolen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En zyn verstant <rhyme label="a" type="m" corresp="#s9:l1">verwert</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Den Satan met <rhyme label="c" type="m">listigheid</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Hier zyn netten <rhyme label="c" type="m" corresp="#s9:l4">uitspreid</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Hem schandelyk <rhyme label="c" type="m" corresp="#s9:l4">verleid</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Door duivels list op eenen <rhyme label="a" type="m">nagt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Als ieder in zyn <rhyme label="b" type="f">rust</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Ende te bedde <rhyme label="a" type="m" corresp="#s10:l1">lag</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Sprak tot zyn vrouw o <rhyme label="c" type="m">schand</rhyme>!</l>
        <l id="s10:l5" met="3" type="-+">O Hoer! gy moet van <rhyme label="c" type="m" corresp="#s10:l4">kant</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Hy als eenen <rhyme label="c" type="m" corresp="#s10:l4">Tyrand</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Kapt met een byl haer in het <rhyme label="a" type="m">hooft</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Dat zy viel dood ter <rhyme label="b" type="f">Aerden</rhyme>:</l>
        <l id="s11:l3" met="3" type="-+">De herssens door <rhyme label="a" type="m" corresp="#s11:l1">geklooft</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">Hooft, armen en <rhyme label="c" type="m">been</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Hakt tot stukken van <rhyme label="c" type="m" corresp="#s11:l4">een</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Terwyl hy was <rhyme label="c" type="m" corresp="#s11:l4">alleen</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Hy sneed haer verder op 't <rhyme label="a" type="m">lichaem</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Want ziet zy was hoog <rhyme label="b" type="f">zwanger</rhyme>:</l>
        <l id="s12:l3" met="3" type="-+">Dees duivelschen <rhyme label="a" type="m" corresp="#s12:l1">Tyran</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Twee Kinders van een <rhyme label="c" type="m">dragt</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Hy in hun bloed <rhyme label="c" type="m" corresp="#s12:l4">versmagt</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Hoord wat hy doen <rhyme label="c" type="m" corresp="#s12:l4">bedagt</rhyme>,</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hy kuipte al 't Vlees in een <rhyme label="a" type="m">vat</rhyme></l>
        <l id="s13:l2" met="3" type="-+">En zette het in een <rhyme label="b" type="f">boot</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">En voor doen uit de <rhyme label="a" type="m" corresp="#s13:l1">stad</rhyme>,,</l>
        <l id="s13:l4" met="3" type="-+">En smeet haer doen in <rhyme label="c" type="m">Zee</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Hy kwam weer op de <rhyme label="c" type="m" corresp="#s13:l4">Ree</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Dagt op geen ramp of <rhyme label="c" type="m" corresp="#s13:l4">wee</rhyme>,</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Zoo gauw den bloed kwam uit <rhyme label="a" type="m">zee</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Zoo kwam dit lighaem <rhyme label="b" type="f">dryven</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Tot Doeveren op de <rhyme label="a" type="m" corresp="#s14:l1">Ree</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">Het vat wierd <rhyme label="c" type="m">opgevist</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Maer niemant niet en <rhyme label="c" type="m" corresp="#s14:l4">wist</rhyme></l>
        <l id="s14:l6" met="3" type="-+">Wie dit vat had <rhyme label="c" type="m" corresp="#s14:l4">gemist</rhyme>,</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Maer op dit vat wierd <rhyme label="a" type="m">opgedaen</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Een ider stond <rhyme label="b" type="f">verslagen</rhyme>:</l>
        <l id="s15:l3" met="3" type="-+">O God! wild ons <rhyme label="a" type="m" corresp="#s15:l1">bystaen</rhyme>!</l>
        <l id="s15:l4" met="3" type="-+">Ziet hier een wreede <rhyme label="c" type="m">moord</rhyme>!</l>
        <l id="s15:l5" met="3" type="-+">Nooit desgelyks <rhyme label="c" type="m" corresp="#s15:l4">gehoord</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Waer op men aenstonds <rhyme label="c" type="m" corresp="#s15:l4">voort</rhyme>,</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Ging na de edel <rhyme label="a" type="m">Maghstraet</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Die aenstond zyn <rhyme label="b" type="f">gekomen</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Zagen dees <rhyme label="a" type="m" corresp="#s16:l1">grouweldaed</rhyme>:</l>
        <l id="s16:l4" met="3" type="-+">Den Moordenaer vol angst <rhyme label="c" type="m">bedugt</rhyme></l>
        <l id="s16:l5" met="3" type="-+">Die nam terstont de <rhyme label="c" type="m" corresp="#s16:l4">vlugt</rhyme></l>
        <l id="s16:l6" met="3" type="-+">Zoo hy hoord dit <rhyme label="c" type="m" corresp="#s16:l4">gerugt</rhyme>,</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Hy wierd vervolgt en <rhyme label="a" type="m">gevat</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Geketend en <rhyme label="b" type="f">geboeit</rhyme>:</l>
        <l id="s17:l3" met="3" type="-+">En gebragt naer de <rhyme label="a" type="m" corresp="#s17:l1">stad</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Gebragt by 't lighaem <rhyme label="c" type="m">hoord</rhyme>:</l>
        <l id="s17:l5" met="3" type="-+">Maer hy bekende <rhyme label="c" type="m" corresp="#s17:l4">voort</rhyme></l>
        <l id="s17:l6" met="3" type="-+">Zyn grouwelyke <rhyme label="c" type="m" corresp="#s17:l4">moord</rhyme>,</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Zoo gauw zyn moeder had <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Dat haer Zoon was <rhyme label="b" type="f">gevangen</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Heeft zy van stonden <rhyme label="a" type="m" corresp="#s18:l1">aen</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Een mes o God! wat <rhyme label="c" type="m">smert</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">Gestoken in haer <rhyme label="c" type="m" corresp="#s18:l4">hert</rhyme></l>
        <l id="s18:l6" met="3" type="-+">En viel voor dood ter <rhyme label="c" type="m" corresp="#s18:l4">aerd</rhyme>,</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Zyn Sententie wierd dan <rhyme label="a" type="m">gemaekt</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Hy moest gerabraekt <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Met een byl in 't hooft <rhyme label="a" type="m" corresp="#s19:l1">gehakt</rhyme>:</l>
        <l id="s19:l4" met="3" type="-+">Voorts armen en <rhyme label="c" type="m">been</rhyme></l>
        <l id="s19:l5" met="3" type="-+">Gekapt tot stuk van <rhyme label="c" type="m" corresp="#s19:l4">een</rhyme></l>
        <l id="s19:l6" met="3" type="-+">Tot spiegel voor ieder <rhyme label="c" type="m" corresp="#s19:l4">een</rhyme>,</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">En verders op het <rhyme label="a" type="m">Galgeveld</rhyme></l>
        <l id="s20:l2" met="3" type="-+">De stukken en <rhyme label="b" type="f">brokken</rhyme></l>
        <l id="s20:l3" met="3" type="-+">Op het Rad <rhyme label="a" type="m" corresp="#s20:l1">gestelt</rhyme>:</l>
        <l id="s20:l4" met="3" type="-+">Zyn moeder aen zyn <rhyme label="c" type="m">zy</rhyme></l>
        <l id="s20:l5" met="3" type="-+">Door haer <rhyme label="c" type="m" corresp="#s20:l4">opstokery</rhyme>,</l>
        <l id="s20:l6" met="3" type="-+">Ach! hoe komt de mensch in <rhyme label="c" type="m" corresp="#s20:l4">ley</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>
