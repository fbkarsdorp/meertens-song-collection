  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Inden Bethleemschen <rhyme label="a" type="m">Stal</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Doen de dry Konijngen <rhyme label="b" type="f">quamen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En hun giften naer <rhyme label="b" type="f" corresp="#s1:l2">betaemen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Offerden Heer van <rhyme label="a" type="m" corresp="#s1:l1">Al</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Sy het soete Kintjen <rhyme label="c" type="f">saegen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Suygen ’t Maeghdelijcke <rhyme label="d" type="m">Nat</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Riepen alle met <rhyme label="c" type="f" corresp="#s1:l5">behaegen</rhyme>:</l>
        <l id="s1:l8" met="4" type="+-">Siet den Koninck drinckt, <rhyme label="d" type="m" corresp="#s1:l6">vivat</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hier van is’t van oudts <rhyme label="a" type="m">manier</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Datme gaet den Koningh <rhyme label="b" type="f">trecken</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Schincken, drincken, ende <rhyme label="b" type="f" corresp="#s2:l2">lecken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Ende maecken goede <rhyme label="a" type="m" corresp="#s2:l1">chier</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Op den avont op de <rhyme label="c" type="f">feeste</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Van den dry Koningen <rhyme label="d" type="m">dagh</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Datmen oock al bly van <rhyme label="c" type="f" corresp="#s2:l5">geeste</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Maeckt ten besten goet <rhyme label="d" type="m" corresp="#s2:l6">gelagh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Eenen is’t, die Koningh <rhyme label="a" type="m">valt</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Eenen Raets-heer, eenen <rhyme label="b" type="f">Schincker</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Eenen sot, of nar, of <rhyme label="b" type="f" corresp="#s3:l2">stincker</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die dan oock bevalligh <rhyme label="a" type="m" corresp="#s3:l1">malt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Yeder een die doet sijn <rhyme label="c" type="f">beste</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Wel te spelen sijn <rhyme label="d" type="m">party</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Als den Koninck drinckt, de <rhyme label="c" type="f" corresp="#s3:l5">reste</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Roept, den Koninck drinckt seer <rhyme label="d" type="m" corresp="#s3:l6">bly</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Siet eens wat ons dit <rhyme label="a" type="m">bediet</rhyme>?</l>
        <l id="s4:l2" met="4" type="+-">Dit bediet het mensche <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ieder is party <rhyme label="b" type="f" corresp="#s4:l2">gegeven</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Ieder oock die valt hier <rhyme label="a" type="m" corresp="#s4:l1">iet</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">D’een die valt hier eenen <rhyme label="c" type="f">Koningh</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Eenen Boer, of <rhyme label="d" type="m">Bedelaer</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">d’ Ander Raets-heer, d’ander <rhyme label="c" type="f" corresp="#s4:l5">Monijnck</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Coopman, Ambacht, <rhyme label="d" type="m" corresp="#s4:l6">Adelaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Een comedy, en een <rhyme label="a" type="m">spel</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Is hier heel het menschen <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Ieder is party <rhyme label="b" type="f" corresp="#s5:l2">gegeven</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Die speelt sijn partye <rhyme label="a" type="m" corresp="#s5:l1">wel</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">’t Sy den Boer, of wel den <rhyme label="c" type="f">Koninck</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">’t Sy den meester, of den <rhyme label="d" type="m">knecht</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">’t Sy den Priester of een <rhyme label="c" type="f" corresp="#s5:l5">Monijnck</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Heeft op ’t lest sijn loon <rhyme label="d" type="m" corresp="#s5:l6">oprecht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als het spel geeyndight <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Als uyt is het spel van ’t <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Die hier was seer hoogh <rhyme label="b" type="f" corresp="#s6:l2">verheven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Hem hier naer geen voordeel <rhyme label="a" type="m" corresp="#s6:l1">is</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Ten sy, dat hy sijn <rhyme label="c" type="f">partye</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Wel gespeelt heeft kleyn of <rhyme label="d" type="m">groot</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Alle menschen <rhyme label="c" type="f" corresp="#s6:l5">laterye</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Maeckt even gelijck de <rhyme label="d" type="m" corresp="#s6:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Boeren spae, en ’s Koninckx <rhyme label="a" type="m">Kroon</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Boeren hutten, ’s Koninckx <rhyme label="b" type="f">Hoven</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Klopt de doodt al <rhyme label="b" type="f" corresp="#s7:l2">onbeschoven</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En bringht yder sijnen <rhyme label="a" type="m" corresp="#s7:l1">loon</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Allen Koningh vande <rhyme label="c" type="f">wereldt</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Is Koningh van <rhyme label="d" type="m">Corterijck</rhyme> ,</l>
        <l id="s7:l7" met="4" type="+-">’t Sy bedoddert of <rhyme label="c" type="f" corresp="#s7:l5">bepeerelt</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">’t Is dry Koningh dagh <rhyme label="d" type="m" corresp="#s7:l6">gelijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
