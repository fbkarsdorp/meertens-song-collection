      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ZO Mannen plengt de koele <rhyme label="a" type="m">wyn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En lach wat met de <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wy moeten aan het drinken <rhyme label="a" type="m" corresp="#s1:l1">zyn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Kom Schenker schenkt maar <rhyme label="b" type="m" corresp="#s1:l2">in</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">ô! Druive dropjes <rhyme label="a" type="m" corresp="#s1:l1">kristalyn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">ô! Ziel-verkwikkend <rhyme label="c" type="m">nat</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Wy springen zonder kreuk of <rhyme label="a" type="m" corresp="#s1:l1">pyn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Met Bagchus om het <rhyme label="c" type="m" corresp="#s1:l6">vat</rhyme>.</l>
