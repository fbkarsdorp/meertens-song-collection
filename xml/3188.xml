    <melody>Het nachtegaaltje klein</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE zeghen-rijcke <rhyme label="a" type="f">stralen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van 't al-bezielent <rhyme label="b" type="m">Goedt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die komen tot ons <rhyme label="c" type="m">he'en</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met groote luyster <rhyme label="a" type="f" corresp="#s1:l1">dalen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">In vollen <rhyme label="b" type="m" corresp="#s1:l2">overvloedt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Van boven nae <rhyme label="c" type="m" corresp="#s1:l3">bene'en</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Om ons in't <rhyme label="c" type="m" corresp="#s1:l3">alghemeen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Seer vrolijck te <rhyme label="d" type="f">vermaecken</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Haer Goddelijck <rhyme label="e" type="m">cieraedt</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">En roodt-ghebloosde <rhyme label="d" type="f" corresp="#s1:l8">kaecken</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Zijn blijck van Godts <rhyme label="e" type="m" corresp="#s1:l9">weldaedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Bloemen en de <rhyme label="a" type="f">Boomen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De Kruyden en de <rhyme label="b" type="m">Bla'en</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Klaver in de <rhyme label="c" type="m">Wey</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De lieffelijcke <rhyme label="a" type="f" corresp="#s2:l1">Stromen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">De net-gheplante <rhyme label="b" type="m" corresp="#s2:l2">Laen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hoe groot en <rhyme label="c" type="m" corresp="#s2:l3">veelderley</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">'t Is alles deur de <rhyme label="c" type="m" corresp="#s2:l3">Mey</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Vervrolijckt en <rhyme label="d" type="f">verresen</rhyme>;</l>
        <l id="s2:l9" met="3" type="-+">'t Schijnt al te zijn <rhyme label="e" type="m">verheught</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">En met een ander <rhyme label="d" type="f" corresp="#s2:l8">wesen</rhyme></l>
        <l id="s2:l11" met="3" type="+-">In een vernieuwde <rhyme label="e" type="m" corresp="#s2:l9">Ieught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Nu Christus is <rhyme label="a" type="f">verschenen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En dat de koude <rhyme label="b" type="m">Snee</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De suyze, stuyze <rhyme label="c" type="m">Lucht</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Al langhe zijn <rhyme label="a" type="f" corresp="#s3:l1">verdwenen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Den natten Reghen <rhyme label="b" type="m" corresp="#s3:l2">mee</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Gheteghen op de <rhyme label="c" type="m" corresp="#s3:l3">vlucht</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Bedrijven wy <rhyme label="c" type="m" corresp="#s3:l3">ghenucht</rhyme>:</l>
        <l id="s3:l8" met="3" type="-+">De Helle is <rhyme label="d" type="f">verslonden</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">De Doodt is neer <rhyme label="e" type="m">ghevelt</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Den Duyvel is <rhyme label="d" type="f" corresp="#s3:l8">ghebonden</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">En wy zijn vry <rhyme label="e" type="m" corresp="#s3:l9">ghestelt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
