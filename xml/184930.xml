  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">ALs neder <rhyme label="a" type="f">sal-daelen</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Godts schroomigh <rhyme label="b" type="m">gelaet</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Uyt d'Hemelsche <rhyme label="a" type="f" corresp="#s1:l1">saelen</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Tot straffe van <rhyme label="b" type="m" corresp="#s1:l2">t'quaedt</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Hoe sal alles <rhyme label="c" type="f">beven</rhyme>!</l>
        <l id="s1:l6" met="2" type="-+">Als d'opperste <rhyme label="d" type="m">macht</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Doet rekening' <rhyme label="c" type="f" corresp="#s1:l5">geven</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Van't minste <rhyme label="d" type="m" corresp="#s1:l6">gedacht</rhyme>?</l>
        <l id="s1:l9" met="2" type="-+">Als sonn' ende <rhyme label="e" type="m">maen</rhyme></l>
        <l id="s1:l10" met="2" type="-+">En sterren <rhyme label="e" type="m" corresp="#s1:l9">vergaen</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">En Godt ons sal doen voor syn Rechter-stoel <rhyme label="e" type="m" corresp="#s1:l9">staen</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">t'Trompet hoor ick <rhyme label="a" type="f">steken</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Met schrickigh <rhyme label="b" type="m">geluydt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Dat d'herten doet <rhyme label="a" type="f" corresp="#s2:l1">breken</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">En graven <rhyme label="b" type="m" corresp="#s2:l2">ontsluyt</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">De doodt moet selfs <rhyme label="c" type="f">beven</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Natuer staet <rhyme label="d" type="m">verstelt</rhyme>;</l>
        <l id="s2:l7" met="2" type="-+">t'Geen oyt was in <rhyme label="c" type="f" corresp="#s2:l5">t'leven</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Schroomt voor het <rhyme label="d" type="m" corresp="#s2:l6">geweldt</rhyme>:</l>
        <l id="s2:l9" met="2" type="-+">t'Moet al voor Godts <rhyme label="e" type="m">throon</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Om t'haelen tot <rhyme label="e" type="m" corresp="#s2:l9">loon</rhyme></l>
        <l id="s2:l11" met="4" type="+-">De eeuwige pynen, oft eeuwige <rhyme label="e" type="m" corresp="#s2:l9">Kroon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Geluckigh, die <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Naer s'Heeren <rhyme label="b" type="m">gebodt</rhyme>!</l>
        <l id="s3:l3" met="2" type="-+">Den boeck, vol <rhyme label="a" type="f" corresp="#s3:l1">geschreven</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Sal wysen ons <rhyme label="b" type="m" corresp="#s3:l2">lot</rhyme>;</l>
        <l id="s3:l5" met="2" type="-+">Sal alles <rhyme label="c" type="f">ontdecken</rhyme></l>
        <l id="s3:l6" met="2" type="-+">En brengen in <rhyme label="d" type="m">t'licht</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">En thoonen ons <rhyme label="c" type="f" corresp="#s3:l5">vlecken</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Voor ieders <rhyme label="d" type="m" corresp="#s3:l6">gesicht</rhyme>.</l>
        <l id="s3:l9" met="2" type="-+">Hoe sal ick daer <rhyme label="e" type="m">staen</rhyme>?</l>
        <l id="s3:l10" met="2" type="-+">De boosheydt, <rhyme label="e" type="m" corresp="#s3:l9">gedaen</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Eylaes! sal my daer doen van schaemte <rhyme label="e" type="m" corresp="#s3:l9">vergaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Tot u kom' ick <rhyme label="a" type="f">vluchten</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Die Rechter syn <rhyme label="b" type="m">moet</rhyme>:</l>
        <l id="s4:l3" met="2" type="-+">O Jesu, in <rhyme label="a" type="f" corresp="#s4:l1">suchten</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Myn hoop' is uw <rhyme label="b" type="m" corresp="#s4:l2">bloedt</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Doet door al uw' <rhyme label="c" type="f">pynen</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Door uw' bitter <rhyme label="d" type="m">doodt</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Voor u my <rhyme label="c" type="f" corresp="#s4:l5">verschynen</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Van schulden <rhyme label="d" type="m" corresp="#s4:l6">ontbloodt</rhyme>:</l>
        <l id="s4:l9" met="2" type="-+">Gy hebt my <rhyme label="e" type="m">gesocht</rhyme>,</l>
        <l id="s4:l10" met="2" type="-+">Soo dier <rhyme label="e" type="m" corresp="#s4:l9">weer-gekocht</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Ey! laet my door u syn tot t'leven <rhyme label="e" type="m" corresp="#s4:l9">gegebrocht</rhyme>.</l>
      </lg>
    </lg>
