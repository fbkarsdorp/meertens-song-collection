  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">WAt is de <rhyme label="a" type="f">Weereld</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Met al haar <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En haer vermond <rhyme label="c" type="m">gelaat</rhyme>?</l>
        <l id="s1:l4" met="2" type="+-">Hoe schoon <rhyme label="a" type="f" corresp="#s1:l1">bepeereldt</rhyme>?</l>
        <l id="s1:l5" met="2" type="+-">Wat kander <rhyme label="b" type="m" corresp="#s1:l2">zijn</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat onstand vaster <rhyme label="c" type="m" corresp="#s1:l3">staet</rhyme>?</l>
        <l id="s1:l7" met="1" type="-+">Haar <rhyme label="d" type="m">schat</rhyme></l>
        <l id="s1:l8" met="1" type="-+">Schijnt <rhyme label="d" type="m" corresp="#s1:l7">wat</rhyme>:</l>
        <l id="s1:l9" met="3" type="-+">Maer als gy 't recht <rhyme label="e" type="m">besiet</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">'t Vernoegd u nimmer <rhyme label="e" type="m" corresp="#s1:l9">niet</rhyme>:</l>
        <l id="s1:l11" met="3" type="+-">'t Bedroefd u alsze <rhyme label="e" type="m" corresp="#s1:l9">vlied</rhyme>.</l>
        <l id="s1:l12" met="4" type="+-">Dies aan al des Werelds <rhyme label="f" type="m">goed</rhyme></l>
        <l id="s1:l13" met="4" type="+-">Niet en is, waar van 't <rhyme label="f" type="m" corresp="#s1:l12">gemoed</rhyme></l>
        <l id="s1:l14" met="3" type="-+">Of lust of rust <rhyme label="e" type="m" corresp="#s1:l9">geniet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">'t Goed schijnd <rhyme label="a" type="f">uitwendig</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Voor die 't <rhyme label="b" type="m">onbeerd</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Een troost, ter wijl men <rhyme label="c" type="m">leeft</rhyme>:</l>
        <l id="s2:l4" met="2" type="+-">Maar 't maakt <rhyme label="a" type="f" corresp="#s2:l1">ellendig</rhyme>/</l>
        <l id="s2:l5" met="2" type="+-">Vermits <rhyme label="b" type="m" corresp="#s2:l2">begeert</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Geen eind nog maat en <rhyme label="c" type="m" corresp="#s2:l3">heeft</rhyme>:</l>
        <l id="s2:l7" met="1" type="-+">'t Geen <rhyme label="d" type="m">schijnt</rhyme></l>
        <l id="s2:l8" met="1" type="-+"><rhyme label="d" type="m" corresp="#s2:l7">Verdwijnd</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">Wanneer 't begeerig <rhyme label="e" type="m">hart</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Met moeyten, zorg en <rhyme label="e" type="m" corresp="#s2:l9">smert</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Tot meer gedreeven <rhyme label="e" type="m" corresp="#s2:l9">werd</rhyme>.</l>
        <l id="s2:l12" met="4" type="+-">Dan vervalt den Mensche <rhyme label="f" type="m">dik</rhyme></l>
        <l id="s2:l13" met="4" type="+-">Door veel zorgen in een <rhyme label="f" type="m" corresp="#s2:l12">strick</rhyme>,</l>
        <l id="s2:l14" met="3" type="-+">Daar in zijn ziel <rhyme label="e" type="m" corresp="#s2:l9">verwerd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Ia zelfs 't <rhyme label="a" type="f">genieten</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Van al het <rhyme label="b" type="m">geen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Deez arme rijkdom <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Zal haast <rhyme label="a" type="f" corresp="#s3:l1">verdrieten</rhyme>;</l>
        <l id="s3:l5" met="2" type="+-">En dat eerst <rhyme label="b" type="m" corresp="#s3:l2">scheen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Vol lust, geen lust meer <rhyme label="c" type="m" corresp="#s3:l3">heeft</rhyme>.</l>
        <l id="s3:l7" met="1" type="-+">Daar 's <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s3:l8" met="1" type="-+">Dat <rhyme label="d" type="m" corresp="#s3:l7">yet</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Geduurzaam is tot <rhyme label="e" type="m">vreugd</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Of staadig u <rhyme label="e" type="m" corresp="#s3:l9">verheugd</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Tot eeuwige <rhyme label="e" type="m" corresp="#s3:l9">geneugt</rhyme>,</l>
        <l id="s3:l12" met="4" type="+-">Als een rijk en bly <rhyme label="f" type="m">gemoed</rhyme>,</l>
        <l id="s3:l13" met="4" type="+-">Dat in voor of <rhyme label="f" type="m" corresp="#s3:l12">teegenspoed</rhyme></l>
        <l id="s3:l14" met="3" type="-+">Scheyt vreugd in ware <rhyme label="e" type="m" corresp="#s3:l9">deugd</rhyme>.</l>
      </lg>
    </lg>
  </text>
