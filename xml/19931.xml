  <author>Johan van Born</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EEr ghy, vriend, van hier <rhyme label="a" type="m">vertreckt</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Wilt my, bid ick, doch <rhyme label="b" type="f">gedencken</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En met rijm dat troost <rhyme label="a" type="m" corresp="#s1:l1">verweckt</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Gunstigh onverdient <rhyme label="b" type="f" corresp="#s1:l2">beschencken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Schenckt my van de trooste | <rhyme label="a" type="m">wijn</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Waer met d'opper Schencker <rhyme label="b" type="f">vulden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Uwe kruyck in druck en <rhyme label="a" type="m" corresp="#s2:l1">pijn</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die 't u al deed duldigh <rhyme label="b" type="f" corresp="#s2:l2">dulden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sorge, zieckte, herte <rhyme label="a" type="m">leyd</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">My gestadelijck <rhyme label="b" type="f">omringen</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Wroeging my een nette <rhyme label="a" type="m" corresp="#s3:l1">breyd</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Dat mijn ziel niet kan <rhyme label="b" type="f" corresp="#s3:l2">ontspringen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Licht u wondert dat ick <rhyme label="a" type="m">ga</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Tot een die heeft meerder <rhyme label="b" type="f">lijden</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">'k Weet niet vriend, maer ick <rhyme label="a" type="m" corresp="#s4:l1">versta</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Dat ghy vaster zijt in 't <rhyme label="b" type="f" corresp="#s4:l2">strijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Elck zyn quale swaerder <rhyme label="a" type="m">weeght</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Doch die Godes gunst mag <rhyme label="b" type="f">nutten</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Licht in geen gevaar <rhyme label="a" type="m" corresp="#s5:l1">beweegt</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Door d'onwanckelbare <rhyme label="b" type="f" corresp="#s5:l2">stutten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Of my zieckte, druck, <rhyme label="a" type="m">gevaer</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Ballingschap, ja dood <rhyme label="b" type="f">omranden</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Smaeckt' ick Godes gunste <rhyme label="a" type="m" corresp="#s6:l1">maer</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Breken zoud ick al hun <rhyme label="b" type="f" corresp="#s6:l2">banden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maer Gods trooste, gunst of <rhyme label="a" type="m">Geest</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Kan ick in mijn ziel niet <rhyme label="b" type="f">smaken</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">'t Lijf geplaeght, de ziel <rhyme label="a" type="m" corresp="#s7:l1">bevreest</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Lijders troost vergeefs na <rhyme label="b" type="f" corresp="#s7:l2">haken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Dit is, vriend, mijn opper <rhyme label="a" type="m">quael</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Quale groost van alle <rhyme label="b" type="f">qualen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Daer by mijn druck al te <rhyme label="a" type="m" corresp="#s8:l1">mael</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Weerdigh niet is om <rhyme label="b" type="f" corresp="#s8:l2">verhalen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Hoewel ick mijn qualen <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s9:l2" met="4" type="+-">('t Sy bekend of seer <rhyme label="b" type="f">verborgen</rhyme>)</l>
        <l id="s9:l3" met="4" type="+-">Wel zoo zwaer om zwelgen, <rhyme label="a" type="m" corresp="#s9:l1">dat</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Menich soud daer an <rhyme label="b" type="f" corresp="#s9:l2">verworgen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">'k Weet de tijd die alles <rhyme label="a" type="m">slijt</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Slijt het tijdelijcke <rhyme label="b" type="f">lijden</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">'t Lijden maeckt geen ziel <rhyme label="a" type="m" corresp="#s10:l1">onvlijd</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Dien Gods Geest en gunst <rhyme label="b" type="f" corresp="#s10:l2">verblijden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Maer die ziel en lichaems <rhyme label="a" type="m">heyl</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Mist, die treed onwisse <rhyme label="b" type="f">treden</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Struyckelt op den wegh <rhyme label="a" type="m" corresp="#s11:l1">onveyl</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Valt en breeckt vast al zijn <rhyme label="b" type="f" corresp="#s11:l2">leden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Van den dranck u <rhyme label="a" type="m">toegedeelt</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Deel t my weder in 't <rhyme label="b" type="f">medoogen</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Eer mijn quael te veel <rhyme label="a" type="m" corresp="#s12:l1">verdeelt</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">En ick werd in 't graf <rhyme label="b" type="f" corresp="#s12:l2">getoogen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Van den stercksten ghy <rhyme label="a" type="m">gesterckt</rhyme>:</l>
        <l id="s13:l2" met="4" type="+-">En getroost door <rhyme label="b" type="f">d'opper-Hoeder</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Door Gods Geest (die in u <rhyme label="a" type="m" corresp="#s13:l1">werkt</rhyme>)</l>
        <l id="s13:l4" met="4" type="+-">Bid ick, troost u <rhyme label="b" type="f" corresp="#s13:l2">mede-broeder</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Eer ghy dan vertrecket <rhyme label="a" type="m">vriend</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Neemt my eens in u <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">En my met u gaven <rhyme label="a" type="m" corresp="#s14:l1">dient</rhyme></l>
        <l id="s14:l4" met="4" type="+-">Om mijn ziele seer te <rhyme label="b" type="f" corresp="#s14:l2">sachten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
