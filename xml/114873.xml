  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VAn wie, Lydvvina, <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Zijn sal u <rhyme label="b" type="m">verduldicheydt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">All' u deughden, en u <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Boven de natuer <rhyme label="b" type="m" corresp="#s1:l2">gheleydt</rhyme>?</l>
        <l id="s1:l5" met="4" type="+-">Die hebt acht-en-dertich <rhyme label="c" type="f">jaren</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Alle sieckten <rhyme label="d" type="m">onderstaen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Willecom die seer u <rhyme label="c" type="f" corresp="#s1:l5">waren</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Van gheen cruycen oot <rhyme label="d" type="m" corresp="#s1:l6">voldaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Sint dat gh' u tot Christus <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Hebt aendachtich <rhyme label="b" type="m">inghekeert</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dat alleen u kost <rhyme label="a" type="f" corresp="#s2:l1">verblijden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Soo Ian Pot u had <rhyme label="b" type="m" corresp="#s2:l2">gheleert</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Menschen troost die u riedt <rhyme label="c" type="f">laten</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Voorent wel van u <rhyme label="d" type="m">betracht</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Overladen boven <rhyme label="c" type="f" corresp="#s2:l5">maten</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Van benautheydt dagh en <rhyme label="d" type="m" corresp="#s2:l6">nacht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sijn vijf wonden (diep <rhyme label="a" type="f">gheschreven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In u soo meweerdich <rhyme label="b" type="m">hert</rhyme>)</l>
        <l id="s3:l3" met="4" type="+-">Aen u lichaem heeft <rhyme label="a" type="f" corresp="#s3:l1">ghegheven</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Iesvs met een groote <rhyme label="b" type="m" corresp="#s3:l2">smert</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Maer g' hebt nedrich hem <rhyme label="c" type="f">ghebeden</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Om die sien'lijck quijt te <rhyme label="d" type="m">zijn</rhyme> ,</l>
        <l id="s3:l7" met="4" type="+-">Doch dat worden sou <rhyme label="c" type="f" corresp="#s3:l5">gheleden</rhyme></l>
        <l id="s3:l8" met="4" type="+-">In u hert daer van de <rhyme label="d" type="m" corresp="#s3:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Aen u, in den gheest <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Werdt een wonder croon <rhyme label="b" type="m">verthoont</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daer ghy me soudt, naer u <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Voor u lijden zijn <rhyme label="b" type="m" corresp="#s4:l2">gheloont</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Maer veel was daer in <rhyme label="c" type="f">ghebleven</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Onvolmaeckt. Dus ghy den <rhyme label="d" type="m">Heer</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Badt, dat hy sou aen u <rhyme label="c" type="f" corresp="#s4:l5">gheven</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Tot volmaeckingh, lijden <rhyme label="d" type="m" corresp="#s4:l6">meer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Naer veel smeecken heeft ten <rhyme label="a" type="f">lesten</rhyme></l>
        <l id="s5:l2" met="4" type="+-">U ghebedt verhoort den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En ghegheven u ten <rhyme label="a" type="f" corresp="#s5:l1">besten</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Aen Picarden, pijnlijck <rhyme label="b" type="m" corresp="#s5:l2">seer</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Die met <rhyme label="c" type="f">ongheschickticheden</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">U ontdeckt en <rhyme label="d" type="m">aengheraeckt</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Leet met nypen, quetsen <rhyme label="c" type="f" corresp="#s5:l5">deden</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Waer die croon door werdt <rhyme label="d" type="m" corresp="#s5:l6">volmaeckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Door de liefde seer <rhyme label="a" type="f">ghedreven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">In die <rhyme label="b" type="m">menichvuldigheydt</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Van swaer sieckten hebd' u <rhyme label="a" type="f" corresp="#s6:l1">leven</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Oock seer strenghelijck <rhyme label="b" type="m" corresp="#s6:l2">gheleydt</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">U sieck lichaem, vol van <rhyme label="c" type="f">wonden</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Hert gheleghen hebdy <rhyme label="d" type="m">naeckt</rhyme></l>
        <l id="s6:l7" met="4" type="+-">Met 'nen gordel vast <rhyme label="c" type="f" corresp="#s6:l5">ghebonden</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Die van peerts-haer was <rhyme label="d" type="m" corresp="#s6:l6">ghemaeckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Uwen Enghel in dit <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Met u wonder was <rhyme label="b" type="m">ghemeyn</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">'s Heeren gheesten zijn <rhyme label="a" type="f" corresp="#s7:l1">ghedreven</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Tot een hert van smetten <rhyme label="b" type="m" corresp="#s7:l2">reyn</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Nu gheniet ghy hen daer <rhyme label="c" type="f">boven</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">En met hen het hoochste <rhyme label="d" type="m">goedt</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Maer, op dat w'u eeuwich <rhyme label="c" type="f" corresp="#s7:l5">loven</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Ons dat oock ghenieten <rhyme label="d" type="m" corresp="#s7:l6">doet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
