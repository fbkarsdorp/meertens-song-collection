  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HOogste Priester, die voor <rhyme label="a" type="m">my</rhyme></l>
        <l id="s1:l2" met="4" type="+-">U geoffert hebt, zo <rhyme label="a" type="m" corresp="#s1:l1">bly</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Maak dog, dat ik ziel en <rhyme label="b" type="f">leeven</rhyme></l>
        <l id="s1:l4" met="4" type="+-">U ten offer weer mag <rhyme label="b" type="f" corresp="#s1:l3">geeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want de Liefde neemt niets <rhyme label="a" type="m">aan</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Wat Gy, Liefd', niet hebt <rhyme label="a" type="m" corresp="#s2:l1">gedaan</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Wat door U niet is <rhyme label="b" type="f">gekoomen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Word by God niet <rhyme label="b" type="f" corresp="#s2:l3">aangenomen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ey zo slacht', om uwe <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Myn verdorven wil en <rhyme label="a" type="m" corresp="#s3:l1">zin</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Ruk het Eigen uit myn <rhyme label="b" type="f">herte</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Zou 't ook zyn met duisend <rhyme label="b" type="f" corresp="#s3:l3">smerten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ik leg U ten offer <rhyme label="a" type="m">daar</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Lyf en ziel op uw <rhyme label="a" type="m" corresp="#s4:l1">Altaar</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">O Gy Liefde! bron van 't <rhyme label="b" type="f">leeven</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Mogt ik my geheel U <rhyme label="b" type="f" corresp="#s4:l3">geeven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dan, dan zal het wel <rhyme label="a" type="m">geschien</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Wat myn Heiland gaarn zou <rhyme label="a" type="m" corresp="#s5:l1">zien</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Dan word nog myn hert op <rhyme label="b" type="f">aarde</rhyme></l>
        <l id="s5:l4" met="4" type="+-">God' een offer, Hem van <rhyme label="b" type="f" corresp="#s5:l3">waarde</rhyme>.</l>
      </lg>
    </lg>
  </text>
