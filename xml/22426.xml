    <melody>Veni redemptor gentium</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Heere hout ons by dijnen <rhyme label="a" type="m">woort</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En breect des Paeus en Torcken <rhyme label="a" type="m" corresp="#s1:l1">moort</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die Jhesum Christum dijnen <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Worpen willen wt synen <rhyme label="b" type="m" corresp="#s1:l3">Throon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Bewijst u macht Heere Jhesu <rhyme label="a" type="m">altijt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ghy die een Heere der Heeren <rhyme label="a" type="m" corresp="#s2:l1">zijt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Beschermt u arme <rhyme label="b" type="m">Christenheyt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat sy u prijse in <rhyme label="b" type="m" corresp="#s2:l3">eewicheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godt heylige Gheest ghy Trooster <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Gheeft dijnen volcke eenderley sin en <rhyme label="a" type="m" corresp="#s3:l1">moet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Staet by ons in den laetsten <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Leyt ons int leuen wt den <rhyme label="b" type="m" corresp="#s3:l3">doot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maeckt haer aenslaghe Heere tot <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Op dat sy treffen haer selfs <rhyme label="a" type="m" corresp="#s4:l1">verdriet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En stort hem in den diepen <rhyme label="b" type="m">Pit</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die als Christus inden Tempel <rhyme label="b" type="m" corresp="#s4:l3">sit</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">So sullen sy bekennen <rhyme label="a" type="m">toch</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat ghy onsen Godt hier leuet <rhyme label="a" type="m" corresp="#s5:l1">noch</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En helpt gheweldich dijne <rhyme label="b" type="m">schaer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die haer op u vertrouwet <rhyme label="b" type="m" corresp="#s5:l3">claer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
