  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ach Moeder ick wil Trouwen <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Want onsen Lapper staet my <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Het is soo braeven <rhyme label="b" type="f">Keirel</rhyme>,</l>
        <l id="s1:l4" met="1" type="-+">Hy <rhyme label="c" type="m">kan</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Schoen-lappen als een <rhyme label="b" type="f" corresp="#s1:l3">peirel</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En een goeden <rhyme label="c" type="m" corresp="#s1:l4">Jan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Seght eens wat wilt ghy vuyl <rhyme label="a" type="m">fatsoen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Met onsen Jan den Lapper <rhyme label="a" type="m" corresp="#s2:l1">doen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Een die kan lustigh <rhyme label="b" type="f">drincken</rhyme>,</l>
        <l id="s2:l4" met="1" type="-+"><rhyme label="c" type="m">Verstaet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wilt beter u <rhyme label="b" type="f" corresp="#s2:l3">bedincken</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Eer het is te <rhyme label="c" type="m" corresp="#s2:l4">laet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och Moeder 't is soo braeven <rhyme label="a" type="m">gast</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Hy naeyt mijn schoenen lustigh <rhyme label="a" type="m" corresp="#s3:l1">vast</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Al met vier dobbel <rhyme label="b" type="f">gaeren</rhyme>,</l>
        <l id="s3:l4" met="1" type="-+">Seer <rhyme label="c" type="m">snel</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ey laet ons samen <rhyme label="b" type="f" corresp="#s3:l3">paeren</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Ghy verstaet my <rhyme label="c" type="m" corresp="#s3:l4">wel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schoen-lappen t'is soo kleyn <rhyme label="a" type="m">respect</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dit Ampt de schoeyery <rhyme label="a" type="m" corresp="#s4:l1">bedeckt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Neemt eenen <rhyme label="b" type="f">Suycker-backer</rhyme>,</l>
        <l id="s4:l4" met="1" type="-+">Seer <rhyme label="c" type="m">reyn</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Want ghy zijt luy en <rhyme label="b" type="f" corresp="#s4:l3">lacker</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Vous m'entendez <rhyme label="c" type="m" corresp="#s4:l4">bien</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Moeder ick brande door de <rhyme label="a" type="m">min</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Den Lapper staet in mijnen <rhyme label="a" type="m" corresp="#s5:l1">sin</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hy kan soo gheestigh <rhyme label="b" type="f">naeyen</rhyme>,</l>
        <l id="s5:l4" met="1" type="-+">Mijn <rhyme label="c" type="m">schoen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Hy sal my noch eens <rhyme label="b" type="f" corresp="#s5:l3">paeyen</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Naer het nieuw <rhyme label="c" type="m" corresp="#s5:l4">fatsoen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Laet Jan de Lapper t'is een <rhyme label="a" type="m">beest</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En wilt noyt naecken leir of <rhyme label="a" type="m" corresp="#s6:l1">leest</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Anders ghy zijt <rhyme label="b" type="f">verloren</rhyme>,</l>
        <l id="s6:l4" met="1" type="-+">Mijn <rhyme label="c" type="m">Kindt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Wilt ghy naer my niet <rhyme label="b" type="f" corresp="#s6:l3">hooren</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Loopt dan nae de <rhyme label="c" type="m" corresp="#s6:l4">windt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ach Moeder lief u niet <rhyme label="a" type="m">bedroeft</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Hans elssen maeckt my noyt <rhyme label="a" type="m" corresp="#s7:l1">bedroeft</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Jck wil worden sijn <rhyme label="b" type="f">Vrouwe</rhyme>,</l>
        <l id="s7:l4" met="1" type="-+">Op <rhyme label="c" type="m">eedt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En Jan de Lapper <rhyme label="b" type="f" corresp="#s7:l3">trouwen</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Js 't u lief of <rhyme label="c" type="m" corresp="#s7:l4">leedt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel is het soo doet uwen <rhyme label="a" type="m">sin</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Trouwt uwen Lapper loopt <rhyme label="a" type="m" corresp="#s8:l1">sottin</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En komt my dan niet <rhyme label="b" type="f">klaghen</rhyme>,</l>
        <l id="s8:l4" met="1" type="-+"><rhyme label="c" type="m">Verstaet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Als ghy sult krijghen <rhyme label="b" type="f" corresp="#s8:l3">slagen</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Volght maer uwen <rhyme label="c" type="m" corresp="#s8:l4">raedt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Moeder 'k en vrees voor gheen <rhyme label="a" type="m">ghetreur</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Jck gaen met Jan den Lapper <rhyme label="a" type="m" corresp="#s9:l1">deur</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Jck sal my laeten <rhyme label="b" type="f">paeyen</rhyme>,</l>
        <l id="s9:l4" met="1" type="-+">Vol <rhyme label="c" type="m">deught</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Want lappen ende <rhyme label="b" type="f" corresp="#s9:l3">naeyen</rhyme>,</l>
        <l id="s9:l6" met="3" type="+-">Js mijn meeste <rhyme label="c" type="m" corresp="#s9:l4">vreught</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Nu is ghetrouwt dit jonghe <rhyme label="a" type="m">Paer</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Sy zijn soo vrolijck met <rhyme label="a" type="m" corresp="#s10:l1">malkaer</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Sy zijn door Trouw <rhyme label="b" type="f">verbonden</rhyme>,</l>
        <l id="s10:l4" met="1" type="-+">Aen <rhyme label="c" type="m">een</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En vechten als twee <rhyme label="b" type="f" corresp="#s10:l3">honden</rhyme>,</l>
        <l id="s10:l6" met="3" type="+-">Knagend' aen een <rhyme label="c" type="m" corresp="#s10:l4">been</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
