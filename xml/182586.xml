<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>182586</id>
    <date>
      <year-start>1800</year-start>
      <year-end>1800</year-end>
    </date>
    <tags/>
    <melody>Als in een donkere eenzame toren</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ik was op een duister naaren <rhyme label="a" type="f">tooren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">De jongeling zat in zyn <rhyme label="b" type="m">druk</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Dat doet natuur zich in myn <rhyme label="a" type="f" corresp="#s1:l1">hooren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En ik schrei om zyn <rhyme label="b" type="m" corresp="#s1:l2">ongeluk</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En ik hoor hem zyn leed <rhyme label="c" type="f">bestreiden</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dan heb ik nagt en dag <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Mama gy moet niet op myn <rhyme label="c" type="f" corresp="#s1:l5">keiven</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">U deernis is myn liefde <rhyme label="d" type="m" corresp="#s1:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als ik aan 't eenzaam venster <rhyme label="a" type="f">luister</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dan druk zyn kiaagstem myn door 't <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Dan is zyn tong als vast <rhyme label="a" type="f" corresp="#s2:l1">gekluistert</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">En hy wenscht dat hy mijn eens <rhyme label="b" type="m" corresp="#s2:l2">had</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Hy zou myn nagt en dag doen <rhyme label="c" type="f">blyven</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Als hy zyn stem eens hooren <rhyme label="d" type="m">liet</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Mama gy moet niet op myn <rhyme label="c" type="f" corresp="#s2:l5">kijven</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">de deernis is de liesde niet.de deernis is de liefde <rhyme label="d" type="m" corresp="#s2:l6">niet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
