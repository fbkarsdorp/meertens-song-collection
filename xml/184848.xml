  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">YDel Ionghe <rhyme label="a" type="m">Ieught</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Van jonghs op <rhyme label="b" type="f">gheneghen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Tot der sonden <rhyme label="a" type="m" corresp="#s1:l1">vreught</rhyme></l>
        <l id="s1:l4" met="3" type="+-">En doodts duyster <rhyme label="b" type="f" corresp="#s1:l2">weghen</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Betert ghy u <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Hier binnen u <rhyme label="d" type="f">leven</rhyme>:</l>
        <l id="s1:l7" met="3" type="+-">V naeckt zwaer <rhyme label="c" type="m" corresp="#s1:l5">verdriet</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Ghy meught schricken <rhyme label="d" type="f" corresp="#s1:l6">beven</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Voor den Ionghsten <rhyme label="e" type="m">dagh</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Die u met <rhyme label="e" type="m" corresp="#s1:l9">gheklagh</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Overvallen sal <rhyme label="f" type="m">subijt</rhyme>:</l>
        <l id="s1:l12" met="3" type="+-">Dus bekeert u <rhyme label="g" type="m">tot</rhyme></l>
        <l id="s1:l13" met="3" type="+-">Den Heer uwen <rhyme label="g" type="m" corresp="#s1:l12">Godt</rhyme>,</l>
        <l id="s1:l14" met="4" type="+-">Voor hem u sonden <rhyme label="f" type="m" corresp="#s1:l11">belijdt</rhyme>:</l>
        <l id="s1:l15" met="3" type="+-">Want hy sal den <rhyme label="h" type="f">boosen</rhyme>,</l>
        <l id="s1:l16" met="3" type="+-">En den <rhyme label="h" type="f" corresp="#s1:l15">goddeloosen</rhyme>,</l>
        <l id="s1:l17" met="4" type="+-">Verdoemen in 't eeuwigh <rhyme label="i" type="m">vyer</rhyme>,</l>
        <l id="s1:l18" met="3" type="+-">Daer sy t'allen <rhyme label="j" type="f">tijden</rhyme></l>
        <l id="s1:l19" met="3" type="+-">Pijne moeten <rhyme label="j" type="f" corresp="#s1:l18">lijden</rhyme>,</l>
        <l id="s1:l20" met="4" type="+-">By den Duyvel 't Helsche <rhyme label="i" type="m" corresp="#s1:l17">Dier</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">O Ionckheydt <rhyme label="a" type="m">verblindt</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Hoe meught ghy noch <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Vroyelijck <rhyme label="a" type="m" corresp="#s2:l1">ghesint</rhyme></l>
        <l id="s2:l4" met="3" type="+-">In hooghmoedt <rhyme label="b" type="f" corresp="#s2:l2">gheresen</rhyme>:</l>
        <l id="s2:l5" met="3" type="+-">Godt die weder <rhyme label="c" type="m">staet</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Den mensche <rhyme label="d" type="f">hooghmoedigh</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Hierom doch <rhyme label="c" type="m" corresp="#s2:l5">aflaet</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Van u sonden <rhyme label="d" type="f" corresp="#s2:l6">bloedigh</rhyme>:</l>
        <l id="s2:l9" met="3" type="+-">'s Vleesch lusten <rhyme label="e" type="m">uyt-blust</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">En vliedt <rhyme label="e" type="m" corresp="#s2:l9">oogen-lust</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Lust der jonckheydt oock <rhyme label="f" type="m">af-breeckt</rhyme>:</l>
        <l id="s2:l12" met="3" type="+-">Houdt u reyn en <rhyme label="g" type="m">vry</rhyme></l>
        <l id="s2:l13" met="3" type="+-">Van vuyl <rhyme label="g" type="m" corresp="#s2:l12">klapperny</rhyme>,</l>
        <l id="s2:l14" met="4" type="+-">Maer liever Gods woorden <rhyme label="f" type="m" corresp="#s2:l11">spreeckt</rhyme>.</l>
        <l id="s2:l15" met="3" type="+-">Wilt u niet meer <rhyme label="h" type="f">stellen</rhyme></l>
        <l id="s2:l16" met="3" type="+-">Tot lichtveerdigh <rhyme label="h" type="f" corresp="#s2:l15">rellen</rhyme></l>
        <l id="s2:l17" met="4" type="+-">Van spot of schandige <rhyme label="i" type="m">praet</rhyme>,</l>
        <l id="s2:l18" met="3" type="+-">Want den mensch <rhyme label="j" type="f">verheven</rhyme>,</l>
        <l id="s2:l19" met="3" type="+-">Rekenschap sal <rhyme label="j" type="f" corresp="#s2:l18">geven</rhyme></l>
        <l id="s2:l20" met="4" type="+-">Van yeder onnut woort <rhyme label="i" type="m" corresp="#s2:l17">quaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Hierom dient den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Van jonghs op <rhyme label="b" type="f">ghestadigh</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Schickt u nae zijn <rhyme label="a" type="m" corresp="#s3:l1">Leer</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Altijdt wijs <rhyme label="b" type="f" corresp="#s3:l2">beradigh</rhyme>:</l>
        <l id="s3:l5" met="3" type="+-">Nae 't exempel <rhyme label="c" type="m">van</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Ioseph jongh van <rhyme label="d" type="f">jaren</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Als wy mercken <rhyme label="c" type="m" corresp="#s3:l5">an</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Hoe hy in 't <rhyme label="d" type="f" corresp="#s3:l6">bezwaren</rhyme></l>
        <l id="s3:l9" met="3" type="+-">Vroom bleef en <rhyme label="e" type="m">constant</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Door Gods Wijsheydt, <rhyme label="e" type="m" corresp="#s3:l9">want</rhyme></l>
        <l id="s3:l11" met="4" type="+-">Die is met hem neer <rhyme label="f" type="m">ghedaelt</rhyme></l>
        <l id="s3:l12" met="3" type="+-">In den Karcker, <rhyme label="g" type="m">daer</rhyme></l>
        <l id="s3:l13" met="3" type="+-">Hy lagh met <rhyme label="g" type="m" corresp="#s3:l12">ghevaer</rhyme>,</l>
        <l id="s3:l14" met="4" type="+-">Soo ons de Schriftuer <rhyme label="f" type="m" corresp="#s3:l11">verhaelt</rhyme>:</l>
        <l id="s3:l15" met="3" type="+-">Laet ons hier op <rhyme label="h" type="f">mercken</rhyme>,</l>
        <l id="s3:l16" met="3" type="+-">En in goede <rhyme label="h" type="f" corresp="#s3:l15">wercken</rhyme></l>
        <l id="s3:l17" met="4" type="+-">Elck toe sien dat hy <rhyme label="i" type="m">beklijft</rhyme>.</l>
        <l id="s3:l18" met="3" type="+-">Want 't Geloof is <rhyme label="j" type="f">sonder</rhyme></l>
        <l id="s3:l19" met="3" type="+-">Wercken doot, 't is <rhyme label="j" type="f" corresp="#s3:l18">wonder</rhyme></l>
        <l id="s3:l20" met="4" type="+-">Dat hier yemant teghen <rhyme label="i" type="m" corresp="#s3:l17">drijft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Door 't Gheloove <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Sara (jonck <rhyme label="b" type="f">eerbaerlijck</rhyme>)</l>
        <l id="s4:l3" met="3" type="+-">Godtsaligh <rhyme label="a" type="m" corresp="#s4:l1">gheleeft</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Sy schoude 't <rhyme label="b" type="f" corresp="#s4:l2">vervaerlijck</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Quaet gheselschap, <rhyme label="c" type="m">met</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Boose lusten <rhyme label="d" type="f">snoode</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Heeft sy niet <rhyme label="c" type="m" corresp="#s4:l5">besmet</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Haer Ziele voor <rhyme label="d" type="f" corresp="#s4:l6">Gode</rhyme>:</l>
        <l id="s4:l9" met="3" type="+-">Maer bleef <rhyme label="e" type="m">onvertsaeght</rhyme></l>
        <l id="s4:l10" met="3" type="+-">Als een suyver <rhyme label="e" type="m" corresp="#s4:l9">Maeght</rhyme></l>
        <l id="s4:l11" met="4" type="+-">By Godts Wet, 't welck haer troost <rhyme label="f" type="m">was</rhyme></l>
        <l id="s4:l12" met="3" type="+-">'t Selfde sien wy <rhyme label="g" type="m">wel</rhyme></l>
        <l id="s4:l13" met="3" type="+-">Oock aen <rhyme label="g" type="m" corresp="#s4:l12">Daniel</rhyme>,</l>
        <l id="s4:l14" met="4" type="+-">En den jonghe <rhyme label="f" type="m" corresp="#s4:l11">Tobias</rhyme>:</l>
        <l id="s4:l15" met="3" type="+-">Die als Vrome <rhyme label="h" type="f">Helden</rhyme></l>
        <l id="s4:l16" met="3" type="+-">Haer van jonckx op <rhyme label="h" type="f" corresp="#s4:l15">stelden</rhyme></l>
        <l id="s4:l17" met="4" type="+-">Om den Heer te dienen <rhyme label="i" type="m">recht</rhyme>:</l>
        <l id="s4:l18" met="3" type="+-">Oorlof Ieught te <rhyme label="j" type="f">samen</rhyme>,</l>
        <l id="s4:l19" met="3" type="+-">Schickt u nae <rhyme label="j" type="f" corresp="#s4:l18">betamen</rhyme></l>
        <l id="s4:l20" met="4" type="+-">Godt te dienen, soo Schrift <rhyme label="i" type="m" corresp="#s4:l17">seght</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
