  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Hij is niet meer, hij is niet <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">De Hemel heeft hem tot zich <rhyme label="b" type="f">genomen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">O Snoek! u naam zal nooit <rhyme label="c" type="m">vergaan</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">U evenbeeld heeft nooit <rhyme label="c" type="m" corresp="#s1:l3">bestaan</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hij was de keus, hij was de <rhyme label="a" type="m">keus</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Van het Schouwtoneel der <rhyme label="b" type="f">Amstellaren</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Waar vind men zulk een Syla <rhyme label="c" type="m">weer</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Barbarossa, Ottello en nog <rhyme label="c" type="m" corresp="#s2:l3">meer</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Spoort u steeds aan, spoort u steeds <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Gij all' die Kunsttoneel <rhyme label="b" type="f">betreden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Laat uw kunst en ijver nooit <rhyme label="c" type="m">vergaan</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Om dat de Schouwburg lang mag blijve <rhyme label="c" type="m" corresp="#s3:l3">staan</rhyme></l>
      </lg>
    </lg>
  </text>
