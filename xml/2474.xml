    <melody>Daar ik gisteravond kwam</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Na dien ick van mijn trouwe <rhyme label="a" type="m">dienst</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Het loon langh heb <rhyme label="b" type="m">verwacht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Het loon langh heb <rhyme label="b" type="m" corresp="#s1:l2">verwacht</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">So vind ick my op 't <rhyme label="a" type="m" corresp="#s1:l1">onversienst</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van u dus schots <rhyme label="b" type="m" corresp="#s1:l2">veracht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Van u dus schots <rhyme label="b" type="m" corresp="#s1:l2">veracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Is dit mijn hoop? is dit mijn <rhyme label="a" type="m">danck</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Is dit dan mijn <rhyme label="b" type="m">waardy</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Is dit dan mijn <rhyme label="b" type="m" corresp="#s2:l2">waardy</rhyme>?</l>
        <l id="s2:l4" met="4" type="-+">Gingh ick hierom myn leven <rhyme label="a" type="m" corresp="#s2:l1">langh</rhyme></l>
        <l id="s2:l5" met="3" type="-+">In straffe <rhyme label="b" type="m" corresp="#s2:l2">slaverny</rhyme>?</l>
        <l id="s2:l6" met="3" type="-+">In straffe <rhyme label="b" type="m" corresp="#s2:l2">slaverny</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Te spaed wert ick mijn sotheyt <rhyme label="a" type="m">kunt</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Maer doch het is my <rhyme label="b" type="m">leet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maer doch het is my <rhyme label="b" type="m" corresp="#s3:l2">leet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">De eer die ick u heb <rhyme label="a" type="m" corresp="#s3:l1">ghegunt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Was aen u niet <rhyme label="b" type="m" corresp="#s3:l2">besteet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Was aen u niet <rhyme label="b" type="m" corresp="#s3:l2">besteet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Had ick u noyt soo wel <rhyme label="a" type="m">be-ooght</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Soo waer ick niet <rhyme label="b" type="m">ghequetst</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Soo waer ick niet <rhyme label="b" type="m" corresp="#s4:l2">ghequetst</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Soo had ick noyt soo hooch <rhyme label="a" type="m" corresp="#s4:l1">gheboocht</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Of schadelijck <rhyme label="b" type="m" corresp="#s4:l2">geswetst</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Of schadelijck <rhyme label="b" type="m" corresp="#s4:l2">geswetst</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Want dees eer, en u groote <rhyme label="a" type="m">goedt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Doen dat u sotte <rhyme label="b" type="m">hart</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Doen dat u sotte <rhyme label="b" type="m" corresp="#s5:l2">hart</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Vol op gheblasen <rhyme label="a" type="m" corresp="#s5:l1">hooghemoet</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Nu dus hoovaerdich <rhyme label="b" type="m" corresp="#s5:l2">wart</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Nu dus hoovaerdich <rhyme label="b" type="m" corresp="#s5:l2">wart</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Siet na u nuwe vrijer <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Daer ghy dus hoofs om <rhyme label="b" type="m">pronckt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Daer ghy dus hoofs om <rhyme label="b" type="m" corresp="#s6:l2">pronckt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maer hy en siet niet eens na <rhyme label="a" type="m" corresp="#s6:l1">u</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Hoe ghy loer-ooght en <rhyme label="b" type="m" corresp="#s6:l2">lonckt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Hoe ghy loer-ooght en <rhyme label="b" type="m" corresp="#s6:l2">lonckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Of ghy al schoon hem scheets <rhyme label="a" type="m">vertreckt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Mijn kintse liefde <rhyme label="b" type="m">sot</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Mijn kintse liefde <rhyme label="b" type="m" corresp="#s7:l2">sot</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Daer ghy (soo 't schijnt) dan met my <rhyme label="a" type="m" corresp="#s7:l1">geckt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Daer wert ghy selfs <rhyme label="b" type="m" corresp="#s7:l2">bespot</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Daer wert ghy selfs <rhyme label="b" type="m" corresp="#s7:l2">bespot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Want nu ghy 't hem dus <rhyme label="a" type="m">openbaart</rhyme></l>
        <l id="s8:l2" met="3" type="-+">t'Geen u toe was <rhyme label="b" type="m">vertrout</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">t'Geen u toe was <rhyme label="b" type="m" corresp="#s8:l2">vertrout</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Soo acht hy u (met recht) niet <rhyme label="a" type="m" corresp="#s8:l1">waart</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Dat hy met u wat <rhyme label="b" type="m" corresp="#s8:l2">kout</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Dat hy met u wat <rhyme label="b" type="m" corresp="#s8:l2">kout</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Al kruyft ghy 't hayr, en ciert u <rhyme label="a" type="m">hooft</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">U kunst dat is maer <rhyme label="b" type="m">wint</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">U kunst dat is maer <rhyme label="b" type="m" corresp="#s9:l2">wint</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Hy veynst het gheen dat ghy <rhyme label="a" type="m" corresp="#s9:l1">ghelooft</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Dat is dat hy u <rhyme label="b" type="m" corresp="#s9:l2">mint</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Dat is dat hy u <rhyme label="b" type="m" corresp="#s9:l2">mint</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O meysjen! soo ghy and ren <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Soo wert u weer <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Soo wert u weer <rhyme label="b" type="m" corresp="#s10:l2">gedaen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Mijn eerste liefde was wel <rhyme label="a" type="m" corresp="#s10:l1">goet</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Maer die is nu <rhyme label="b" type="m" corresp="#s10:l2">vergaen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Maer die is nu <rhyme label="b" type="m" corresp="#s10:l2">vergaen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Princesse die ick eerst <rhyme label="a" type="m">verhief</rhyme>:</l>
        <l id="s11:l2" met="3" type="-+">Ick wensch u goeden <rhyme label="b" type="m">nacht</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Ick wensch u goeden <rhyme label="b" type="m" corresp="#s11:l2">nacht</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Adieu mijn suure, soete <rhyme label="a" type="m" corresp="#s11:l1">lief</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Ick soeck dat ghy <rhyme label="b" type="m" corresp="#s11:l2">verwacht</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Ick soeck dat ghy <rhyme label="b" type="m" corresp="#s11:l2">verwacht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
