  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DIe mind soeckt te <rhyme label="a" type="f">behagen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Noyt kan hy beter <rhyme label="a" type="f" corresp="#s1:l1">slagen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">De blom van onse <rhyme label="b" type="m">Ieucht</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Is alleen voor de <rhyme label="b" type="m" corresp="#s1:l3">vreucht</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Laat ons uyt onse <rhyme label="c" type="f">sinne</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Verbannen <rhyme label="d" type="m">treurigheyt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Daar is geen vreucht in 't <rhyme label="c" type="f" corresp="#s1:l5">minnen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Sonder hulp van <rhyme label="d" type="m" corresp="#s1:l6">vroolickheydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Self kleyne <rhyme label="a" type="f">Cupidootje</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat lieve <rhyme label="a" type="f" corresp="#s2:l1">minne-gootje</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Is altyd even <rhyme label="b" type="m">bly</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En vlucht van <rhyme label="b" type="m" corresp="#s2:l3">suffery</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Van zorgh wil hy niet <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Van droefheyd noch <rhyme label="d" type="m">geklagh</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Hy is uyt vreucht <rhyme label="c" type="f" corresp="#s2:l5">gebooren</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">En in minne voort <rhyme label="d" type="m" corresp="#s2:l6">gebracht</rhyme>.</l>
      </lg>
    </lg>
