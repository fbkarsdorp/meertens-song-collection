  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WAt wil ick <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Oftspreken, oft wel <rhyme label="b" type="f">swygen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Op dat ick sou <rhyme label="b" type="f" corresp="#s1:l2">verkryghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van myn Philis eenen <rhyme label="a" type="m" corresp="#s1:l1">soen</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">Den Secretaris van myn <rhyme label="c" type="m">hert'</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Magh die niet weten waer 't my <rhyme label="c" type="m" corresp="#s1:l5">smert</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">En wilt dan niet qualyck <rhyme label="d" type="f">nemen</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Dat ick <rhyme label="e" type="m">klaegh</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Wat pyn ick om u <rhyme label="e" type="m" corresp="#s1:l8">verdraegh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">O soete <rhyme label="a" type="m">Spruyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">'k Wou lest den brandt van <rhyme label="b" type="f">minnen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Verborghen gaen van <rhyme label="b" type="f" corresp="#s2:l2">binnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Maer den roock die broght hem <rhyme label="a" type="m" corresp="#s2:l1">uyt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">'t Ghesucht dat my uyt't herte <rhyme label="c" type="m">breckt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Spreckt daer myn tonghe niet en <rhyme label="c" type="m" corresp="#s2:l5">spreckt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">'t Wenscht te kryghen door syn <rhyme label="d" type="f">hyghen</rhyme></l>
        <l id="s2:l8" met="2" type="+-"><rhyme label="e" type="m">Medecyn</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">'t Wilt van u gheholpen <rhyme label="e" type="m" corresp="#s2:l8">zyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Soo ghy noch <rhyme label="a" type="m">klaeght</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat ick u spreeck van <rhyme label="b" type="f">lussjens</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Stopt my den mont met <rhyme label="b" type="f" corresp="#s3:l2">kussjens</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Kust my eens Ã´ soete <rhyme label="a" type="m" corresp="#s3:l1">Maeght</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Soo sult ghy hebben dat ghy <rhyme label="c" type="m">vraeght</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En ick het ghen' dat my <rhyme label="c" type="m" corresp="#s3:l5">behaeght</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Soo maeckt ghy'er met een <rhyme label="d" type="f">dinghen</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Twee <rhyme label="e" type="m">ghepaeyt</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">En naer hunnen lust <rhyme label="e" type="m" corresp="#s3:l8">versaeyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
