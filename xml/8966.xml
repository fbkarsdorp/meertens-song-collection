  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">COmt God Schepper Heylige <rhyme label="a" type="m">Geest</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Besoeckt dat hert der Menschen <rhyme label="b" type="m">dijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Met u Ghenaed' vervultse <rhyme label="a" type="m" corresp="#s1:l1">meest</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die u Schepsel vercooren <rhyme label="b" type="m" corresp="#s1:l2">syn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want ghy sijt den trooster seer <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Des Alderhoochsten Gave <rhyme label="b" type="m">duer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Een Geestelijcke salve <rhyme label="a" type="m" corresp="#s2:l1">goet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Een levend' Fonteyn liefd' en <rhyme label="b" type="m" corresp="#s2:l2">vuer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ontsteeckt een licht in ons <rhyme label="a" type="m">verstant</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Geeft in ons Hert der liefden <rhyme label="b" type="m">brant</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ons vleysch swackheyt is u <rhyme label="a" type="m" corresp="#s3:l1">bekant</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Behoudt vast met u stercke <rhyme label="b" type="m" corresp="#s3:l2">hant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy syt met Gaven seven <rhyme label="a" type="m">vout</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Den vinger aen Godes Rechter <rhyme label="b" type="m">hant</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Des Vaders woort geeft sonder <rhyme label="a" type="m" corresp="#s4:l1">fout</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Met veel tongen in alle <rhyme label="b" type="m" corresp="#s4:l2">landt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Des Vyants list drijft van ons <rhyme label="a" type="m">veern</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Den Vreed schaff dy ons dijn <rhyme label="b" type="m">Ghenaed'</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat wy dijner Leyding' volghen <rhyme label="a" type="m" corresp="#s5:l1">geern</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Vermijden der Zielen <rhyme label="b" type="m" corresp="#s5:l2">schaed'</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Leert ons den Vader kennen <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Daer toe Jesum Christ synen <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dat wy des Ghelooves worden <rhyme label="a" type="m" corresp="#s6:l1">vol</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die beyder Geest te <rhyme label="b" type="m" corresp="#s6:l2">verstaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Godt Vader sy Loff en den <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die van den Dood' is op <rhyme label="b" type="m">ghestaen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Den Trooster sy dat selffde <rhyme label="a" type="m" corresp="#s7:l1">ghedaen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Beyd' nu end Eewich <rhyme label="b" type="m" corresp="#s7:l2">voortaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
