  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ADonia steegh <rhyme label="a" type="m">op</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Tot hy den hooghsten <rhyme label="a" type="m" corresp="#s1:l1">top</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van hooghmoet had <rhyme label="b" type="f">betreden</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Daer brald hy als een <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Maer stort in haest oock <rhyme label="c" type="m" corresp="#s1:l4">neer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met al sijn <rhyme label="b" type="f" corresp="#s1:l3">trotsigheden</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want doe hy hoord' de <rhyme label="a" type="m">klanck</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van 't vreughden-rijck <rhyme label="a" type="m" corresp="#s2:l1">gesangh</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Op Salomonis <rhyme label="b" type="f">Krooningh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Viel al sijn trots daer <rhyme label="c" type="m">heen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sijn hooghmoet die <rhyme label="c" type="m" corresp="#s2:l4">verdween</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En hy smeeckt om <rhyme label="b" type="f" corresp="#s2:l3">verschooningh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">3.Maer als eens Godes <rhyme label="a" type="m">Soon</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sal sitten op sijn <rhyme label="a" type="m" corresp="#s3:l1">troon</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met heerlijckheydt <rhyme label="b" type="f">beperelt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En het <rhyme label="c" type="m">Basuyn-gheschal</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ten oordeel daghen <rhyme label="c" type="m" corresp="#s3:l4">sal</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Het volck van heel de <rhyme label="b" type="f" corresp="#s3:l3">Wereldt</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dan sal des Sondaers <rhyme label="a" type="m">Gheest</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Noch veel meer sijn <rhyme label="a" type="m" corresp="#s4:l1">bevreest</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ja schier van anghst <rhyme label="b" type="f">verdwijnen</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">O mensche ! denckt hier <rhyme label="c" type="m">an</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En leeft soo, dat ghy <rhyme label="c" type="m" corresp="#s4:l4">dan</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Vrymoedigh meught <rhyme label="b" type="f" corresp="#s4:l3">verschijnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
