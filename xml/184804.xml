    <melody>Gelijk de hert spoedt</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">WAer ben ick <rhyme label="a" type="m">geraeckt</rhyme>?</l>
        <l id="s1:l2" met="3" type="+-">Valsch heb' ick <rhyme label="b" type="f">gesworen</rhyme>;</l>
        <l id="s1:l3" met="3" type="+-">Den Heere <rhyme label="a" type="m" corresp="#s1:l1">versaeckt</rhyme>;</l>
        <l id="s1:l4" met="3" type="+-">Waer toe ick <rhyme label="b" type="f" corresp="#s1:l2">geboren</rhyme>?</l>
        <l id="s1:l5" met="3" type="+-">Naer menigh kloeck <rhyme label="c" type="f">spreken</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Ben ick van myn <rhyme label="d" type="m">goedt</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Soo leelyck <rhyme label="c" type="f" corresp="#s1:l5">geweken</rhyme>.</l>
        <l id="s1:l8" met="3" type="+-">Vervloekigh <rhyme label="d" type="m" corresp="#s1:l6">gemoedt</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Ick hebbe <rhyme label="a" type="m">misdaen</rhyme>:</l>
        <l id="s2:l2" met="3" type="+-">Ah! t'is my <rhyme label="b" type="f">berouwen</rhyme>:</l>
        <l id="s2:l3" met="3" type="+-">Wilt my doch <rhyme label="a" type="m" corresp="#s2:l1">ontstaen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Geeft, Jesu, <rhyme label="b" type="f" corresp="#s2:l2">betrouwen</rhyme>:</l>
        <l id="s2:l5" met="3" type="+-">k'Gaen droefheyt u <rhyme label="c" type="f">geven</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">O Godt, mynen <rhyme label="d" type="m">al</rhyme>!</l>
        <l id="s2:l7" met="3" type="+-">Dees boosheydt myn <rhyme label="c" type="f" corresp="#s2:l5">leven</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Versaecken ick <rhyme label="d" type="m" corresp="#s2:l6">sal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Loopt traenen, loopt <rhyme label="a" type="m">vloedt</rhyme></l>
        <l id="s3:l2" met="3" type="+-">In suchten, en <rhyme label="b" type="f">kermen</rhyme>:</l>
        <l id="s3:l3" met="3" type="+-">Berst, vreedigh <rhyme label="a" type="m" corresp="#s3:l1">gemoedt</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Wilt, Heer, my <rhyme label="b" type="f" corresp="#s3:l2">ontfermen</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">O Jesu, siet <rhyme label="c" type="f">vloeyen</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Rievieren van <rhyme label="d" type="m">traen</rhyme>;</l>
        <l id="s3:l7" met="3" type="+-">Laet dese <rhyme label="c" type="f" corresp="#s3:l5">uyt-roeyen</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Het leedt, u <rhyme label="d" type="m" corresp="#s3:l6">gedaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
