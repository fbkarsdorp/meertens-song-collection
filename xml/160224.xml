  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MAria doe zy Jesus <rhyme label="a" type="f">miste</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Op d' aftocht van <rhyme label="b" type="m">Jerusalem</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En zy Godts heyl'ghe Lam niet <rhyme label="a" type="f" corresp="#s1:l1">wiste</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Soo gingh zy henen en socht <rhyme label="b" type="m" corresp="#s1:l2">hem</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gy haer bekenden, ende <rhyme label="a" type="f">Magen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Op alle weghen zy <rhyme label="b" type="m">besiet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer na al 't moeylijck <rhyme label="a" type="f" corresp="#s2:l1">onder-vraghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En vont zy aldaer Jesus <rhyme label="b" type="m" corresp="#s2:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer doe haer moede voet den <rhyme label="a" type="f">drempel</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Van Godes Heyligh Huys <rhyme label="b" type="m">betrat</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Vont zy daer Jesus in den <rhyme label="a" type="f" corresp="#s3:l1">Tempel</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Alsoo hy als een Leeraer <rhyme label="b" type="m" corresp="#s3:l2">sat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wat ziele dat oock staet <rhyme label="a" type="f">verleghen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Om Christi troost, en Godts <rhyme label="b" type="m">ghenaedt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En soeck die niet op <rhyme label="a" type="f" corresp="#s4:l1">Wereldts-weghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Daer nu 't verdrayt gheslacht op <rhyme label="b" type="m" corresp="#s4:l2">gaet</rhyme>;</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy soeckt sijn Heylandt in Godts <rhyme label="a" type="f">Kercke</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Daer woont nu Jesus klaer en <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En breyt sijn goedtheydt uyt als <rhyme label="a" type="f" corresp="#s5:l1">vlercken</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Daer onder hy sijn kind'ren <rhyme label="b" type="m" corresp="#s5:l2">noodt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daer deelt hy uyt sijn sal'ghe <rhyme label="a" type="f">gaven</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Daer leert hy door sijn woordt en <rhyme label="b" type="m">Gheest</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer doet hy 't dorstigh herte <rhyme label="a" type="f" corresp="#s6:l1">laven</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Daer woondt sijn heyl 't welck 't al <rhyme label="b" type="m" corresp="#s6:l2">gheneest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
