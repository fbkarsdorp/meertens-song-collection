  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GOdt heeft aen Adam in 't <rhyme label="a" type="m">begin</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Een mede-hulp <rhyme label="b" type="f">ghegheven</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">om met hem te <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme></l>
        <l id="s1:l4" met="3" type="+-">In de soete <rhyme label="a" type="m" corresp="#s1:l1">min</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Godt schiep twee <rhyme label="c" type="f">Lyven</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Van een Lyf <rhyme label="d" type="m">alleen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En ded' die Lyven <rhyme label="c" type="f" corresp="#s1:l5">blyven</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Door de Trouw in <rhyme label="d" type="m" corresp="#s1:l6">een</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">En onder hun <rhyme label="d" type="m" corresp="#s1:l6">ghemeen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'k Wil met myn Liefsten aen myn <rhyme label="a" type="m">zyd'</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ghenucht, en blyschap <rhyme label="b" type="f">rapen</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Want sy is <rhyme label="b" type="f" corresp="#s2:l2">gheschapen</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Uyt myn zyd' voor <rhyme label="a" type="m" corresp="#s2:l1">my</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Een dobbel <rhyme label="c" type="f">touwken</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Dat en breckt niet <rhyme label="d" type="m">licht</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Het Manneken aen 't <rhyme label="c" type="f" corresp="#s2:l5">Vrouken</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Door de trouw <rhyme label="d" type="m" corresp="#s2:l6">verplicht</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Voor niemant niet en <rhyme label="d" type="m" corresp="#s2:l6">swicht</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'t En gaet geloovet my niet <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat Mannen ofte <rhyme label="b" type="f">Vrouwen</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Willen huys gaen <rhyme label="b" type="f" corresp="#s3:l2">houwen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Sonder Med' <rhyme label="a" type="m" corresp="#s3:l1">ghesel</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Is 't dat de <rhyme label="c" type="f">Dieren</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Trouwen huns <rhyme label="d" type="m">ghelyck</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sal ick alleen gaen <rhyme label="c" type="f" corresp="#s3:l5">swieren</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Buyten 't <rhyme label="d" type="m" corresp="#s3:l6">Houwelyck</rhyme></l>
        <l id="s3:l9" met="3" type="-+">En leven <rhyme label="d" type="m" corresp="#s3:l6">droeffelyck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Wed'wenaer maeckt droef <rhyme label="a" type="m">misbaer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">WanneÃªr hy heeft <rhyme label="b" type="f">verloren</rhyme></l>
        <l id="s4:l3" met="3" type="+-">Die hy hadd' <rhyme label="b" type="f" corresp="#s4:l2">verkoren</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Tot syn <rhyme label="a" type="m" corresp="#s4:l1">weder-paer</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Ick hebb' <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Een die my <rhyme label="d" type="m">bemindt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ick ben in vreught <rhyme label="c" type="f" corresp="#s4:l5">verslonden</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Ick ben wel <rhyme label="d" type="m" corresp="#s4:l6">ghesint</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Myn Schip vaert voor den <rhyme label="d" type="m" corresp="#s4:l6">windt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een mensch alleen en is gheen <rhyme label="a" type="m">mensch</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In alle <rhyme label="b" type="f">Houwelycken</rhyme></l>
        <l id="s5:l3" met="3" type="+-">Stel-men twee <rhyme label="b" type="f" corresp="#s5:l2">ghelycken</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Om te zyn naer <rhyme label="a" type="m" corresp="#s5:l1">wensch</rhyme>;</l>
        <l id="s5:l5" met="2" type="-+">Want hoe sou <rhyme label="c" type="f">malen</rhyme></l>
        <l id="s5:l6" met="3" type="+-">Eenen Steen <rhyme label="d" type="m">alleen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Men moet noch ievers <rhyme label="c" type="f" corresp="#s5:l5">halen</rhyme></l>
        <l id="s5:l8" met="3" type="+-">Eenen <rhyme label="d" type="m" corresp="#s5:l6">Meulen-steen</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">En legghen die op <rhyme label="d" type="m" corresp="#s5:l6">een</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">D'een Lief is d'ander Liefs <rhyme label="a" type="m">gerief</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">D'een hant moet d'ander <rhyme label="b" type="f">wassen</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">En d'een' Lief moet <rhyme label="b" type="f" corresp="#s6:l2">passen</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Op het ander <rhyme label="a" type="m" corresp="#s6:l1">Lief</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Alleen te <rhyme label="c" type="f">rysen</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Langhs des levens <rhyme label="d" type="m">baen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Maeckt droevighe <rhyme label="c" type="f" corresp="#s6:l5">ghepysen</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">'t En staet my niet <rhyme label="d" type="m" corresp="#s6:l6">aen</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">'k Wil met myn Huys-vrou <rhyme label="d" type="m" corresp="#s6:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Voor sigh alleen <rhyme label="a" type="m">gedurighlyck</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Te singhen en te <rhyme label="b" type="f">klinghen</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">En zyn sulcken <rhyme label="b" type="f" corresp="#s7:l2">dinghen</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Niet <rhyme label="a" type="m" corresp="#s7:l1">verdrietelyck</rhyme>?</l>
        <l id="s7:l5" met="2" type="-+">Met syn <rhyme label="c" type="f">Vrindinne</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Maken <rhyme label="d" type="m">goede-cier</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die vreucht verheugt de <rhyme label="c" type="f" corresp="#s7:l5">sinnen</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Dat is recht <rhyme label="d" type="m" corresp="#s7:l6">playsier</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">De rest is niet een <rhyme label="d" type="m" corresp="#s7:l6">sier</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Alleen gelyck als Hans den <rhyme label="a" type="m">Beul</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Aen Tafel zyn <rhyme label="b" type="f">gheseten</rhyme></l>
        <l id="s8:l3" met="3" type="+-">En alleen te <rhyme label="b" type="f" corresp="#s8:l2">eten</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">En lust my niet <rhyme label="a" type="m" corresp="#s8:l1">veul</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Maer met syn <rhyme label="c" type="f">Vrinden</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Samen zyn <rhyme label="d" type="m">verheught</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En met syn <rhyme label="c" type="f" corresp="#s8:l5">Wel-beminde</rhyme></l>
        <l id="s8:l8" met="3" type="+-">Eten is een <rhyme label="d" type="m" corresp="#s8:l6">vreught</rhyme></l>
        <l id="s8:l9" met="3" type="-+">Die aen het hert doet <rhyme label="d" type="m" corresp="#s8:l6">deugt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De eensaemheydt is <rhyme label="a" type="m">aremoe</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Maer als ick door Godts <rhyme label="b" type="f">zegen</rhyme></l>
        <l id="s9:l3" met="3" type="+-">Hebb' een Vrouw <rhyme label="b" type="f" corresp="#s9:l2">ghekregen</rhyme>,</l>
        <l id="s9:l4" met="3" type="+-">Kreegh ick noch gelt <rhyme label="a" type="m" corresp="#s9:l1">toe</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">O myn <rhyme label="c" type="f">Beminde</rhyme></l>
        <l id="s9:l6" met="3" type="+-">Vreught van myn <rhyme label="d" type="m">gemoet</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Ick wirdt met u te <rhyme label="c" type="f" corresp="#s9:l5">vinden</rhyme></l>
        <l id="s9:l8" met="3" type="+-">Eens soo ryck van <rhyme label="d" type="m" corresp="#s9:l6">Bloet</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">En noch soo ryck van <rhyme label="d" type="m" corresp="#s9:l6">goet</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
