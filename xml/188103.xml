    <tags/>
    <melody>Hoe of Susannetje zuur ziet</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">WAnneer Babels <rhyme label="a" type="f">Koningh</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In sijne sluymer <rhyme label="b" type="m">lagh</rhyme></l>
        <l id="s1:l3" met="3" type="-+">In sijn pratte <rhyme label="a" type="f" corresp="#s1:l1">wooningh</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Hy eenen <rhyme label="a" type="f" corresp="#s1:l1">vertooningh</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Droomende aensagh // <rhyme label="b" type="m" corresp="#s1:l2">aensagh</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Een Beeldt van vreemden <rhyme label="b" type="m" corresp="#s1:l2">slach</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Hy sagh staen op 't <rhyme label="a" type="f">Beelde</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Eenen Gulden <rhyme label="b" type="m">Hooft</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Daer de glans om <rhyme label="a" type="f" corresp="#s2:l1">speelde</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Als een Son vol <rhyme label="a" type="f" corresp="#s2:l1">weelde</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Die den dagh belooft // <rhyme label="b" type="m" corresp="#s2:l2">belooft</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En al de Tintels <rhyme label="b" type="m" corresp="#s2:l2">dooft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Doe hy 't ooghe <rhyme label="a" type="f">keerde</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Onder na de <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Was die slechs van <rhyme label="a" type="f" corresp="#s3:l1">eerde</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Wel van slechten <rhyme label="a" type="f" corresp="#s3:l1">weerde</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Een stof die in onspoedt // <rhyme label="b" type="m" corresp="#s3:l2">onspoedt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Haest omme vallen <rhyme label="b" type="m" corresp="#s3:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Dit Beeldt druckt <rhyme label="a" type="f">bequaemlijck</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wereldts  Rijckdom <rhyme label="b" type="m">af</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">'t Schijnt eerst <rhyme label="a" type="f" corresp="#s4:l1">aengenaemlijck</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Staet'lijck, en <rhyme label="a" type="f" corresp="#s4:l1">betaemlijck</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Of 't veel heerlijcks gaf, ja <rhyme label="b" type="m" corresp="#s4:l2">gaf</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Blinckt als een Koninghs <rhyme label="b" type="m" corresp="#s4:l2">staf</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Maer die lust <rhyme label="a" type="f">t'aenschouwen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hoe onvast ze <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die saeck in <rhyme label="a" type="f" corresp="#s5:l1">benouwen</rhyme></l>
        <l id="s5:l4" met="3" type="+-">By haer eens <rhyme label="a" type="f" corresp="#s5:l1">vertrouwen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Haer troost en toeverlaet // niet <rhyme label="b" type="m" corresp="#s5:l2">staet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Als d'Hemels handt u <rhyme label="b" type="m" corresp="#s5:l2">slaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
