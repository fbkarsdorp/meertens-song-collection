  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ach proper dier waer wildy <rhyme label="a" type="m">heen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dus inde nare <rhyme label="b" type="m">nacht</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">'tIs sorghelijck te gaen <rhyme label="a" type="m" corresp="#s1:l1">alleen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">My tot Convoy <rhyme label="b" type="m" corresp="#s1:l2">verwacht</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">My tot Convoy <rhyme label="b" type="m" corresp="#s1:l2">verwacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe komt dat ghy so schichtich <rhyme label="a" type="m">bent</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En vliedt van my dus <rhyme label="b" type="m">vert</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Geen vyand Lief is u <rhyme label="a" type="m" corresp="#s2:l1">omtrent</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waer toe dit loopen <rhyme label="b" type="m" corresp="#s2:l2">hert</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Waer toe dit loopen <rhyme label="b" type="m" corresp="#s2:l2">hert</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vreest ghy niet dat de boeven, <rhyme label="a" type="m">Vrou</rhyme></l>
        <l id="s3:l2" met="3" type="-+">U sullen randen <rhyme label="b" type="m">aen</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">En sy u misdeden, ick <rhyme label="a" type="m" corresp="#s3:l1">sou</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van rou en smart <rhyme label="b" type="m" corresp="#s3:l2">vergaen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Van rou en smart <rhyme label="b" type="m" corresp="#s3:l2">vergaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick heb u dit so dick <rhyme label="a" type="m">gheseyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Oock vande liefde <rhyme label="b" type="m">mijn</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Ghelijck het hout in 't vier <rhyme label="a" type="m" corresp="#s4:l1">gheleyt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">So leghick inde <rhyme label="b" type="m" corresp="#s4:l2">pijn</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">So leghick inde <rhyme label="b" type="m" corresp="#s4:l2">pijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe dickwils heb ick my <rhyme label="a" type="m">vermant</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Om u te loopen <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Niet eens aensiende eer of <rhyme label="a" type="m" corresp="#s5:l1">schant</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Ick achtent niet een <rhyme label="b" type="m" corresp="#s5:l2">haer</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ick achtent niet een <rhyme label="b" type="m" corresp="#s5:l2">haer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">So vreemt als gh'u in 't loopen <rhyme label="a" type="m">toont</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">So vreemt zijt ghy in <rhyme label="b" type="m">als</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Blijft al mijn moeyten <rhyme label="a" type="m" corresp="#s6:l1">ongheloont</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Soo is de kaart heel <rhyme label="b" type="m" corresp="#s6:l2">valsch</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Soo is de kaart heel <rhyme label="b" type="m" corresp="#s6:l2">valsch</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als ick noch denck om d'oude <rhyme label="a" type="m">vreucht</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En om de laetste <rhyme label="b" type="m">praat</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dan is myn hartje heel <rhyme label="a" type="m" corresp="#s7:l1">verheucht</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wat sou nu doen de <rhyme label="b" type="m" corresp="#s7:l2">daat</rhyme>?</l>
        <l id="s7:l5" met="3" type="-+">Wat sou nu doen de <rhyme label="b" type="m" corresp="#s7:l2">daat</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Waarom toont ghy so vreemt een <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Daer ghy mijn wel meucht <rhyme label="b" type="m">sien</rhyme>?</l>
        <l id="s8:l3" met="4" type="-+">Ick bid u, troost, ontdecktet <rhyme label="a" type="m" corresp="#s8:l1">mijn</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">De oorsaeck van dit <rhyme label="b" type="m" corresp="#s8:l2">vlien</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">De oorsaeck van dit <rhyme label="b" type="m" corresp="#s8:l2">vlien</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Nu ghy my dit te kennen <rhyme label="a" type="m">gheeft</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En opentlijck <rhyme label="b" type="m">vermont</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">So sal ick u myn Lief <rhyme label="a" type="m" corresp="#s9:l1">beleeft</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Beminnen t' aller <rhyme label="b" type="m" corresp="#s9:l2">stont</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Beminnen t' aller <rhyme label="b" type="m" corresp="#s9:l2">stont</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Princes moet ick scheven <rhyme label="a" type="m">alree</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">So beveel ick u d' <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die wil dy: my bewaren <rhyme label="a" type="m" corresp="#s10:l1">mee</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Adieu mijn lief vol <rhyme label="b" type="m" corresp="#s10:l2">eer</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Adieu mijn lief vol <rhyme label="b" type="m" corresp="#s10:l2">eer</rhyme>.</l>
      </lg>
    </lg>
  </text>
