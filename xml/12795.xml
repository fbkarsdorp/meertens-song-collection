  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DIe lust heeft tot de <rhyme label="a" type="m">trouw</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Om soo der menschen <rhyme label="a" type="m" corresp="#s1:l1">bouw</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Vruchtbaerlijck voort te <rhyme label="b" type="f">setten</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Die soucke geen <rhyme label="c" type="m">partuyr</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Na driften der <rhyme label="c" type="m" corresp="#s1:l4">natuyr</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Maer nae Gods heylge <rhyme label="b" type="f" corresp="#s1:l3">wetten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Let op geslacht, en <rhyme label="a" type="m">aerdt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Eer ghy met yemant <rhyme label="a" type="m" corresp="#s2:l1">paert</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Let meest op't deughtsaem <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Want schoonheyt, goet en <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sijn in sigh selfs niet <rhyme label="c" type="m" corresp="#s2:l4">quaet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Maer konnen 'theyl niet <rhyme label="b" type="f" corresp="#s2:l3">geven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wilt ghy een soete <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Versaeckt u eygen <rhyme label="a" type="m" corresp="#s3:l1">sin</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Leert door u vingeren <rhyme label="b" type="f">kijcken</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Maeckt van een pluym geen <rhyme label="c" type="m">pont</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Bewaert voor al u <rhyme label="c" type="m" corresp="#s3:l4">mont</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dan sal de twist wel <rhyme label="b" type="f" corresp="#s3:l3">wijcken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Versorght tesaem het <rhyme label="a" type="m">huys</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">Leeft eerelijck en <rhyme label="a" type="m" corresp="#s4:l1">cuysch</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Draeght saem malkanders <rhyme label="b" type="f">lijden</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Voed', liefde, eer, en <rhyme label="c" type="m">trouw</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Soo hebt ghy noyt <rhyme label="c" type="m" corresp="#s4:l4">berouw</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Van uwe Bruylofs <rhyme label="b" type="f" corresp="#s4:l3">tijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
