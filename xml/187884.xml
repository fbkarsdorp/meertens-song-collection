    <melody>Amarylletje mijn vriendin</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAnneer de kist van Godts <rhyme label="a" type="m">verbondt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ter plaetse aldaer Dagon <rhyme label="a" type="m" corresp="#s1:l1">stont</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wordt van de Philestijn <rhyme label="b" type="m">ghebracht</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Viel Dagon om, in d'eerste <rhyme label="b" type="m" corresp="#s1:l3">nacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En doe hy door des Priesters <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Weer wordt ghestelt in sijnen <rhyme label="a" type="m" corresp="#s2:l1">stant</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Is hy, soo haest de Son <rhyme label="b" type="m">verdooft</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Weer omgevallen sonder <rhyme label="b" type="m" corresp="#s2:l3">Hooft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Alwaer de deught in volle <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Treet in de Ziele op haer <rhyme label="a" type="m" corresp="#s3:l1">wacht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Daer valt voor haer in korte <rhyme label="b" type="m">stont</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">De langh-gediende snoode <rhyme label="b" type="m" corresp="#s3:l3">sond'</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En komt die Af-godt op te <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Soo kampt de deught daer tegen <rhyme label="a" type="m" corresp="#s4:l1">aen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Tot dat dat Monster, door de <rhyme label="b" type="m">Tught</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Onthooft, al Ziel-loos hene <rhyme label="b" type="m" corresp="#s4:l3">vlught</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
