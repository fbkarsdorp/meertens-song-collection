    <melody>Fortuin hoe ongestadig zijn uw gaven</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Johanna de Gavre</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Wat soetigheydt is het Iesum te <rhyme label="a" type="f">minnen</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Als hy een ziel geheel ontsteeckt van <rhyme label="a" type="f" corresp="#s1:l1">binnen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Als hy haer is <rhyme label="b" type="m">ontrent</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En aen haer herte <rhyme label="c" type="m">woelt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ten is haer niet <rhyme label="b" type="m" corresp="#s1:l3">bekent</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat sy van binnen <rhyme label="c" type="m" corresp="#s1:l4">voelt</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Als Iesus by haer is t’is al <rhyme label="a" type="f">glorie</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Sy wint by den vyant altijt <rhyme label="a" type="f" corresp="#s2:l1">victorie</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sy komt tot aller <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Verwinster van den <rhyme label="c" type="m">strijt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En gheeft aen haeren <rhyme label="b" type="m" corresp="#s2:l3">Heer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Den lof tot allen <rhyme label="c" type="m" corresp="#s2:l4">tijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Gheenen Wolf soo vreet of fel die haer kan <rhyme label="a" type="f">schaden</rhyme></l>
        <l id="s3:l2" met="5" type="-+">S’en vreest oock gheenen Leeuw om sijne <rhyme label="a" type="f" corresp="#s3:l1">daden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Noch gheenen storm oft <rhyme label="b" type="m">wint</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Kan maecken haer <rhyme label="c" type="m">benaut</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Want sy op dien sy <rhyme label="b" type="m" corresp="#s3:l3">mint</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Haer grondelijck <rhyme label="c" type="m" corresp="#s3:l4">betrout</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Al moest sy dadelijck haer bloet <rhyme label="a" type="f">verstorten</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Al moest sy in de Zee haer leven <rhyme label="a" type="f" corresp="#s4:l1">korten</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Noch hout sy haer <rhyme label="b" type="m">ghemeen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met haeren Godt en <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die sy bemindt <rhyme label="b" type="m" corresp="#s4:l3">alleen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En eeuwigh Minnen <rhyme label="c" type="m" corresp="#s4:l4">sal</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Gheen onrust noch verdriet kan haer <rhyme label="a" type="f">verstooren</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">Want sy houdt in Godts min gheheel <rhyme label="a" type="f" corresp="#s5:l1">verlooren</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Al woont sy in den <rhyme label="b" type="m">poel</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Van s’wereldts <rhyme label="c" type="m">ijdelheydt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Nochtans al dat <rhyme label="b" type="m" corresp="#s5:l3">ghewoel</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Is voor haer te neer <rhyme label="c" type="m" corresp="#s5:l4">gheleydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Sy rust sy slaept t’is by haer altijt <rhyme label="a" type="f">morghen</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Sy houtn haer stil s’en wilt nerghers voor <rhyme label="a" type="f" corresp="#s6:l1">sorghen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Want door Godts claer <rhyme label="b" type="m">ghestrael</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">En grootheydt sonder <rhyme label="c" type="m">ent</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Verliest sy het <rhyme label="b" type="m" corresp="#s6:l3">altemael</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Al dat haer is <rhyme label="c" type="m" corresp="#s6:l4">ontrent</rhyme>.</l>
      </lg>
    </lg>
  </text>
