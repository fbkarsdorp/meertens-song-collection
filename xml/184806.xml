  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">AEn het Kruys is Godt <rhyme label="a" type="f">gehangen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Naekt, vol bloedt, en heel <rhyme label="b" type="m">doorwondt</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Van de voeten tot de <rhyme label="a" type="f" corresp="#s1:l1">wangen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Heeft hy niet een deel <rhyme label="b" type="m" corresp="#s1:l2">gesondt</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Om t'omhelsen al de <rhyme label="c" type="f">menschen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Siet syn armen <rhyme label="d" type="m">uyt-gereckt</rhyme>:</l>
        <l id="s1:l7" met="4" type="+-">Hy verkryght syn lange <rhyme label="c" type="f" corresp="#s1:l5">wenschen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Die de liefd' hem had' <rhyme label="d" type="m" corresp="#s1:l6">verweckt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Siet door-boort syn handen, <rhyme label="a" type="f">voeten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En met nagels <rhyme label="b" type="m">vast-gehecht</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Liefd' alleen kan pyn <rhyme label="a" type="f" corresp="#s2:l1">versoeten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die voor Godt kloekmoedigh <rhyme label="b" type="m" corresp="#s2:l2">vecht</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Jesus laet syn syd' <rhyme label="c" type="f">door-dringen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Die voor u de liefd' <rhyme label="d" type="m">ontsluyt</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Vyf fonteynen laet hy <rhyme label="c" type="f" corresp="#s2:l5">springen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Die uw' boosheydt wasschen <rhyme label="d" type="m" corresp="#s2:l6">uyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Steenen, Rotsen bersten, <rhyme label="a" type="f">beven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Als den Heer van alles <rhyme label="b" type="m">sterft</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Om dat hy, die t'al doet <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">t'Leven voor de menschen <rhyme label="b" type="m" corresp="#s3:l2">derft</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">En kont gy fyn doodt <rhyme label="c" type="f">aenschouwen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Sondaer, harter als een <rhyme label="d" type="m">steen</rhyme>?</l>
        <l id="s3:l7" met="4" type="+-">Thoont ten lesten eens <rhyme label="c" type="f" corresp="#s3:l5">berouwen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Maekt uw hert sacht door <rhyme label="d" type="m" corresp="#s3:l6">geween</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
