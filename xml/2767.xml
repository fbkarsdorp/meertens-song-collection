  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs een uyt-gestorte <rhyme label="a" type="f">Balsem</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Is mijns Heeren Jesu <rhyme label="b" type="m">Naem</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">s' Is van smaeck soo <rhyme label="b" type="m" corresp="#s1:l2">aengenaem</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat ick tegen all' den <rhyme label="a" type="f" corresp="#s1:l1">Alssem</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Die ick in dit leven <rhyme label="c" type="m">proef</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Slechts dees' soeten Naem <rhyme label="c" type="m" corresp="#s1:l5">behoef</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als ick wel hebb' <rhyme label="a" type="f">overwogen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Sijn beduyding' en sijn <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">'k Vind' daer in soo grooten <rhyme label="b" type="m" corresp="#s2:l2">macht</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dats' is salve voor mijn <rhyme label="a" type="f" corresp="#s2:l1">oogen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">s' Is de sausse van mijn <rhyme label="c" type="m">kost</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dranck veel soeter als de <rhyme label="c" type="m" corresp="#s2:l5">Most</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">S' is de beste <rhyme label="a" type="f">Medecijne</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Soet, nochtans het hert <rhyme label="b" type="m">gesondt</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">s' Is als Honigh in den <rhyme label="b" type="m" corresp="#s3:l2">Mondt</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">s' Is een plaester tegen <rhyme label="a" type="f" corresp="#s3:l1">pijne</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">s' Is een staf in <rhyme label="c" type="m">zwarigheydt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Grooten troost in <rhyme label="c" type="m" corresp="#s3:l5">treurigheydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wat ick lees, of schrijf, of <rhyme label="a" type="f">hoore</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Isser desen Name <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'t Is my onlust en <rhyme label="b" type="m" corresp="#s4:l2">verdriet</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Maer soo haest als in mijn <rhyme label="a" type="f" corresp="#s4:l1">oore</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Desen soeten Name <rhyme label="c" type="m">klinckt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">'k Voel dat s' in mijn herte <rhyme label="c" type="m" corresp="#s4:l5">sinckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Desen Naem soeck ick te <rhyme label="a" type="f">drucken</rhyme></l>
        <l id="s5:l2" met="4" type="+-">In mijn hert soo gantsch en <rhyme label="b" type="m">gaer</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Dat ick vast'lijck meen <rhyme label="b" type="m" corresp="#s5:l2">voorwaer</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Sneetmen 't hert in duysent <rhyme label="a" type="f" corresp="#s5:l1">stucken</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Datmen noch in 't minste <rhyme label="c" type="m">deel</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Vinden soud' dien Naem <rhyme label="c" type="m" corresp="#s5:l5">geheel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">And're laet ick putten <rhyme label="a" type="f">graven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Met een domme kracht en <rhyme label="b" type="m">sin</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Die geen water hebben <rhyme label="b" type="m" corresp="#s6:l2">in</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Ick gedenck mijn ziel te <rhyme label="a" type="f" corresp="#s6:l1">laven</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Uyt dees' Born van alle <rhyme label="c" type="m">Heyl</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Daer ick noyt en vinde <rhyme label="c" type="m" corresp="#s6:l5">feyl</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'t Was het werck niet van sijn <rhyme label="a" type="f">Moeder</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Datmen hem dien Name <rhyme label="b" type="m">gaf</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">d' Ordre quam van boven <rhyme label="b" type="m" corresp="#s7:l2">af</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Dat hy als sijns Volcks <rhyme label="a" type="f" corresp="#s7:l1">Behoeder</rhyme></l>
        <l id="s7:l5" met="4" type="+-">En Verlosser, soo <rhyme label="c" type="m">getrouw</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Desen Name dragen <rhyme label="c" type="m" corresp="#s7:l5">souw</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Om uw's Naems wil Jesu <rhyme label="a" type="f">goedigh</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Weest mijn Jesus, steldt my <rhyme label="b" type="m">vry</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Van des Satans <rhyme label="b" type="m" corresp="#s8:l2">tyranny</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">Geeft my aen uw' lijden, <rhyme label="a" type="f" corresp="#s8:l1">bloedigh</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Deel, tot mijn <rhyme label="c" type="m">rechtveerdigheydt</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">En de Geest der <rhyme label="c" type="m" corresp="#s8:l5">Heyligheydt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Wilt my uw' verdiensten <rhyme label="a" type="f">schencken</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Dat ick daer meed' <rhyme label="b" type="m">aen-gedaen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Mach tot uwen Vader <rhyme label="b" type="m" corresp="#s9:l2">gaen</rhyme>;</l>
        <l id="s9:l4" met="4" type="+-">Wilt de macht der sonden <rhyme label="a" type="f" corresp="#s9:l1">krencken</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Datse niet meer heersch in <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Maer alleen Heer Jesu <rhyme label="c" type="m" corresp="#s9:l5">gy</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Jesu wilt my niet <rhyme label="a" type="f">begeven</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Dat ick u oock niet <rhyme label="b" type="m">begeef</rhyme>:</l>
        <l id="s10:l3" met="4" type="+-">Geef dat ick soo langh ick <rhyme label="b" type="m" corresp="#s10:l2">leef</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">U mach als een klis <rhyme label="a" type="f" corresp="#s10:l1">aenkleven</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">En wanneer mijn ziel <rhyme label="c" type="m">verscheydt</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Jesu neemts' in u <rhyme label="c" type="m" corresp="#s10:l5">geleydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
