    <melody>Met lusten willen wij zingen en loven dat Roomse rijk</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOort toe ghy menschen op der <rhyme label="a" type="f">eerden</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die van God gheschapen <rhyme label="b" type="m">zijt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">En wilt Gods woort <rhyme label="a" type="f" corresp="#s1:l1">aenueerden</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Hout op van sonden tis meer dan <rhyme label="b" type="m" corresp="#s1:l2">tijt</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Hoort wat Christus zijn iongeren ginck <rhyme label="c" type="m">bedien</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Als sy begheerden te <rhyme label="d" type="f">weten</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Wanneer den Ioncxsten dach soude <rhyme label="c" type="m" corresp="#s1:l5">gheschien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoort wat Christus haer <rhyme label="a" type="f">bescheyde</rhyme></l>
        <l id="s2:l2" met="4" type="-+">En sprack met woorden <rhyme label="b" type="m">betaem</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Siet dat v niemant en <rhyme label="a" type="f" corresp="#s2:l1">verleyde</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Daer salder veel comen in in mijnen <rhyme label="b" type="m" corresp="#s2:l2">naem</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Segghende dat sy Christus <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Siet toe dat v niemant en <rhyme label="d" type="f">bedrieghe</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Sprack Christus tot zijnen apostelen <rhyme label="c" type="m" corresp="#s2:l5">fijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wanneer ghy sult <rhyme label="a" type="f">horen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Datter gherucht der oorloghen <rhyme label="b" type="m">geschiet</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Dit spreect ons Christus te <rhyme label="a" type="f" corresp="#s3:l1">voren</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Siet wel toe en verschrickt v <rhyme label="b" type="m" corresp="#s3:l2">niet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Want dit moet gheschieden verstaet wel <rhyme label="c" type="m">my</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Maer verblijt v dan ghy <rhyme label="d" type="f">wtuercoren</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Want v verlossinghe is na <rhyme label="c" type="m" corresp="#s3:l5">by</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Pestilencien en diere <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Sullender wesen doet Christus <rhyme label="b" type="m">vermaen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Deen Coninck sal teghen dander <rhyme label="a" type="f" corresp="#s4:l1">strijden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Dat kint sal teghen den Uader <rhyme label="b" type="m" corresp="#s4:l2">opstaen</rhyme></l>
        <l id="s4:l5" met="4" type="-+">En die vader sal tkint leueren in der <rhyme label="c" type="m">doot</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Want sy sullen v <rhyme label="d" type="f">benijden</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Om mijnen naem spreect Christus <rhyme label="c" type="m" corresp="#s4:l5">bloot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoort wat ons Matheus laet <rhyme label="a" type="f">weten</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Int vierentwintichste doet <rhyme label="b" type="m">vermaen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Hoe datter veel valsche <rhyme label="a" type="f" corresp="#s5:l1">Propheten</rhyme></l>
        <l id="s5:l4" met="4" type="-+">In die laetste tijden sullen <rhyme label="b" type="m" corresp="#s5:l2">opstaen</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Ueel sullenser verleyden soot is <rhyme label="c" type="m">aenschijn</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Maer wie volstandich blijft wilt <rhyme label="d" type="f">hooren</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Totten eynde sal salich <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Deuangelie des rijcx <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Sal die werelt ouer <rhyme label="b" type="m">al</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Den volcke vercondicht <rhyme label="a" type="f" corresp="#s6:l1">wesen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Eer den dach des Heeren comen <rhyme label="b" type="m" corresp="#s6:l2">sal</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Maer veel valsche Propheten sullen <rhyme label="c" type="m">opstaen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Om dat sy in dwalinghe souden <rhyme label="d" type="f">leyden</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Gods wtuercoren doet Christus <rhyme label="c" type="m" corresp="#s6:l5">vermaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die sonne en sal dan niet meer <rhyme label="a" type="f">schijnen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Noch die mane zijt dies wel <rhyme label="b" type="m">vroet</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Die sterren sullen oock <rhyme label="a" type="f" corresp="#s7:l1">verdwijnen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Uan den hemel vallen metter <rhyme label="b" type="m" corresp="#s7:l2">spoet</rhyme></l>
        <l id="s7:l5" met="4" type="-+">De menschen sullen weenen voorwaer <rhyme label="c" type="m">gheseyt</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Dan sal die sone des menschen <rhyme label="d" type="f">comen</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Met grooter cracht ende <rhyme label="c" type="m" corresp="#s7:l5">heerlicheyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als dan so sal hy <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Die schapen wt die bocken <rhyme label="b" type="m">voorwaer</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Dus elck wil hem <rhyme label="a" type="f" corresp="#s8:l1">bereyden</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Dat hem dien dach niet en valle te <rhyme label="b" type="m" corresp="#s8:l2">swaer</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Dus waect en bidt wie dat ghy <rhyme label="c" type="m">zijt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Ende wilt den Heere <rhyme label="d" type="f">verbeyden</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Want wy en weten vre noch <rhyme label="c" type="m" corresp="#s8:l5">tijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
