  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">WItte <rhyme label="a" type="f">Duyfje</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die met soet <rhyme label="b" type="m">gezwier</rhyme></l>
        <l id="s1:l3" met="3" type="-+">De lucht van ’t Y en Amstel <rhyme label="b" type="m" corresp="#s1:l2">cier</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">De lucht van ’t Y en Amstel <rhyme label="b" type="m" corresp="#s1:l2">cier</rhyme>,</l>
        <l id="s1:l5" met="5" type="-+">Met radde vluchjes, nette treetjes, en <rhyme label="c" type="f">schreetjes</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">O witte Duyfje, sarp soete <rhyme label="b" type="m" corresp="#s1:l2">dier</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">O witte <rhyme label="a" type="f" corresp="#s1:l1">Duyfje</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">O witte Duyfje, sarrep soete <rhyme label="b" type="m" corresp="#s1:l2">dier</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Preutsche <rhyme label="a" type="f">Duyfje</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hoe komt dat ghy mijn <rhyme label="b" type="m">vlucht</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Verlaet, en klimt schier tot de <rhyme label="b" type="m" corresp="#s2:l2">lucht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Verlaet, en klimt schier tot de <rhyme label="b" type="m" corresp="#s2:l2">lucht</rhyme>,</l>
        <l id="s2:l5" met="5" type="-+">Met moedigh kroppen dael neder, keer <rhyme label="c" type="f">weder</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">O preutsche Duyfje, staeck u snelle <rhyme label="b" type="m" corresp="#s2:l2">vlucht</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">O preutsche <rhyme label="a" type="f" corresp="#s2:l1">Duyfje</rhyme>!</l>
        <l id="s2:l8" met="4" type="-+">O preutsche Duyfje! staeck u snelle <rhyme label="b" type="m" corresp="#s2:l2">vlucht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Aerdigh <rhyme label="a" type="f">Duyfje</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Vergun my dat ick <rhyme label="b" type="m">mach</rhyme></l>
        <l id="s3:l3" met="3" type="-+">By u te strijcken op een <rhyme label="b" type="m" corresp="#s3:l2">slagh</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">By u te strijcken op een <rhyme label="b" type="m" corresp="#s3:l2">slagh</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">Met slepende wieckjes, draeytjes en <rhyme label="c" type="f">zwaeytjes</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">O aerdigh Duyfje! gun aen my dien <rhyme label="b" type="m" corresp="#s3:l2">dagh</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">O aerdigh <rhyme label="a" type="f" corresp="#s3:l1">Duyfje</rhyme>!</l>
        <l id="s3:l8" met="4" type="-+">O aerdigh Duyfje! Gun aen my dien <rhyme label="b" type="m" corresp="#s3:l2">dagh</rhyme>.</l>
      </lg>
    </lg>
  </text>
