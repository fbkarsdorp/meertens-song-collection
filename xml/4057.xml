  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Sijt vrolijck / het is worden <rhyme label="a" type="m">dach</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die sonne is op <rhyme label="b" type="f">gheganghen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Die heere heeft ghewonnen den <rhyme label="a" type="m" corresp="#s1:l1">slach</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Verlost oock sijn <rhyme label="b" type="f" corresp="#s1:l2">gheuangen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Minne is dat beste <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat ymmermeer mach <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Die minne den minnenden mensche <rhyme label="a" type="m" corresp="#s2:l1">doet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Al sonder arbeyt <rhyme label="b" type="f" corresp="#s2:l2">leuen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Minnen wij God <rhyme label="a" type="m">eenpaerlijc</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ende schouwen des werelts <rhyme label="b" type="f">weghen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Soe moghen wij worden van duechden <rhyme label="a" type="m" corresp="#s3:l1">rijck</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ende eeweliken <rhyme label="b" type="f" corresp="#s3:l2">leuen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ist dat wi Ihesum volghen <rhyme label="a" type="m">dra</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Eenen corten stont in <rhyme label="b" type="f">minnen</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Hi sal ons croonen al hier <rhyme label="a" type="m" corresp="#s4:l1">na</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ende maken ons <rhyme label="b" type="f" corresp="#s4:l2">coninghinnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Iesus minne die breede <rhyme label="a" type="m">steet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En machmen niet <rhyme label="b" type="f">verberghen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Dien Iesus minne int herte <rhyme label="a" type="m" corresp="#s5:l1">leet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met vreden sal hi <rhyme label="b" type="f" corresp="#s5:l2">steruen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Der werelt minne is <rhyme label="a" type="m">fenijn</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die haer mint wort <rhyme label="b" type="f">bedrogen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Die menige waent de liefste <rhyme label="a" type="m" corresp="#s6:l1">sijn</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Int eynde vint hijt <rhyme label="b" type="f" corresp="#s6:l2">gheloghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Daer om en wil ick mi nyet <rhyme label="a" type="m">verliesen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Om eenichs menschen loosen <rhyme label="b" type="f">waen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Ic wil den soeten Ihesum <rhyme label="a" type="m" corresp="#s7:l1">verkiesen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van hem wil ic sijn trou <rhyme label="b" type="f" corresp="#s7:l2">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ic wil hem in mijn herte <rhyme label="a" type="m">sluten</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ende houden hem daer in al <rhyme label="b" type="f">vast</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Ende laten alle dinck van <rhyme label="a" type="m" corresp="#s8:l1">buyten</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Ende leuen met hem in groter <rhyme label="b" type="f" corresp="#s8:l2">rast</rhyme></l>
      </lg>
    </lg>
  </text>
