<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>52053</id>
    <date>
      <year-start>1776</year-start>
      <year-end>1800</year-end>
    </date>
    <tags>
      <tag>farewell song</tag>
    </tags>
    <melody>Van de geldduivel</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Lucifer is hier in <rhyme label="a" type="m">post</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Aangekomen dat kost dat <rhyme label="a" type="m" corresp="#s1:l1">kost</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Want hy moest 'er wat spoedig <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Mist de hel nu word te <rhyme label="b" type="m" corresp="#s1:l3">klyn</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Om aan werkliede te <rhyme label="c" type="f">geraken</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En daar me d'Hel grooter te <rhyme label="c" type="f" corresp="#s1:l5">maken</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Die veel bedrog doet is <rhyme label="d" type="m">rebel</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Zy gaan ryden in post naar <rhyme label="d" type="m" corresp="#s1:l7">d'Hel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Eenen metselaar of <rhyme label="a" type="m">timmerman</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die den dagdief speelen <rhyme label="a" type="m" corresp="#s2:l1">kan</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En steenhouwers zyn daar van <rhyme label="b" type="m">doen</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Om te kappen naar 't nieuw <rhyme label="b" type="m" corresp="#s2:l3">fatsoen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Som meer passen als dat s'hun <rhyme label="c" type="f">spoeye</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En zo stillekens den hond <rhyme label="c" type="f" corresp="#s2:l5">vloeyen</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Die verdienen hun bier slegt <rhyme label="d" type="m">wel</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Moeten ryden in post naar <rhyme label="d" type="m" corresp="#s2:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een schaledekker moet daar <rhyme label="a" type="m">zyn</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die ook kammen den vos in 't <rhyme label="a" type="m" corresp="#s3:l1">fyn</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En dan ook eenen yzer <rhyme label="b" type="m">smit</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die kwaad yzer maakt goet en <rhyme label="b" type="m" corresp="#s3:l3">wit</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat ze voor eenen stuiver <rhyme label="c" type="f">halen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En doen vier vyf stuivers <rhyme label="c" type="f" corresp="#s3:l5">betalen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">En boven dat hun loon zeer <rhyme label="d" type="m">wel</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Doet ze ryden in post naar <rhyme label="d" type="m" corresp="#s3:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Voor die werkliÃªn groot en <rhyme label="a" type="m">klyn</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Moet daar ook eenen bakker <rhyme label="a" type="m" corresp="#s4:l1">zyn</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die voor witte brood en <rhyme label="b" type="m">beschuit</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Wel kan buile de blom daar <rhyme label="b" type="m" corresp="#s4:l3">uit</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En van semelen kan brood <rhyme label="c" type="f">bakken</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Als hy het maar aan een kan <rhyme label="c" type="f" corresp="#s4:l5">plakken</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">En nog veel klein dat is <rhyme label="d" type="m">fel</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Hy moet ryden in post naar <rhyme label="d" type="m" corresp="#s4:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maalders moeten daar ook zyn <rhyme label="a" type="m">tog</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Om te maalen terf en <rhyme label="a" type="m" corresp="#s5:l1">rog</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Zyn hun zakken wat veel te <rhyme label="b" type="m">ligt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Door het stof lakfeert het <rhyme label="b" type="m" corresp="#s5:l3">gewigt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Als zy uit uwen zak wat <rhyme label="c" type="f">halen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Het is verstoven door het <rhyme label="c" type="f" corresp="#s5:l5">maalen</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Zy willen van niemand geen <rhyme label="d" type="m">spel</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Maar zy ryden in post naar <rhyme label="d" type="m" corresp="#s5:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Lucifer roept ook zonder <rhyme label="a" type="m">Vrees</rhyme>.</l>
        <l id="s6:l2" met="4" type="-+">Eenen slagter om te hebben <rhyme label="a" type="m" corresp="#s6:l1">vlees</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Verkens worsten maar 't is <rhyme label="b" type="m">vals</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Nugtere kalvere vlees is <rhyme label="b" type="m" corresp="#s6:l3">mals</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Oud koeijen vlees al van jonh <rhyme label="c" type="f">ossen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Wilt maar wat met u tanden <rhyme label="c" type="f" corresp="#s6:l5">prossen</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Stinkende en in plaats vet <rhyme label="d" type="m">vel</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Gy zult ryden in post naar <rhyme label="d" type="m" corresp="#s6:l7">d'hel</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als 'er het Werkvolk <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Moet 'er ook zomtyds wat <rhyme label="a" type="m" corresp="#s7:l1">Vis</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Maar men daar overvraagt en <rhyme label="b" type="m">liegt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En ook meenigen mensch <rhyme label="b" type="m" corresp="#s7:l3">bedriegt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Som een vierendeel Vis <rhyme label="c" type="f">verkopen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Van vyf deelen gesneede <rhyme label="c" type="f" corresp="#s7:l5">hopen</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">En ook dikwils geheel vrak of <rhyme label="d" type="m">snel</rhyme>.</l>
        <l id="s7:l8" met="4" type="-+">Wilt mee ryden in post naar <rhyme label="d" type="m" corresp="#s7:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ook eenen <rhyme label="a" type="m">Herbergier</rhyme>;</l>
        <l id="s8:l2" met="4" type="-+">Moet 'er zyn om te krygen <rhyme label="a" type="m" corresp="#s8:l1">Bier</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Al broud hy in de Kelder <rhyme label="b" type="m">wat</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">'t Is om zo gauw niet te zyn <rhyme label="b" type="m" corresp="#s8:l3">zat</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">En den Genever half <rhyme label="c" type="f">Water</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Dat belet nog den zotten <rhyme label="c" type="f" corresp="#s8:l5">taater</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">En zy schryven twee voor een <rhyme label="d" type="m">snel</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Mars wilt ryden in post naar <rhyme label="d" type="m" corresp="#s8:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Den Kleermaker daar niet me <rhyme label="a" type="m">gekt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Als hy door de oor van de Schaar <rhyme label="a" type="m" corresp="#s9:l1">trekt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Hy heeft veel Lappen groot en <rhyme label="b" type="m">klyn</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Als ons Kleeren versleeten <rhyme label="b" type="m" corresp="#s9:l3">zijn</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En de Schoenmaker van <rhyme label="c" type="f">gelyken</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Die de gaten met pek <rhyme label="c" type="f" corresp="#s9:l5">toestryken</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Somtyds lappen als citroen <rhyme label="d" type="m">schel</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">Dat ze ryden in post naar <rhyme label="d" type="m" corresp="#s9:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Haalen een Chirurgyn <rhyme label="a" type="m">algouw</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Of 'er eenen viel van den <rhyme label="a" type="m" corresp="#s10:l1">bouw</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die de ermen of beenen <rhyme label="b" type="m">krakt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Dat hy van hun tog word <rhyme label="b" type="m" corresp="#s10:l3">vermakt</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Maar zy doen zomtyds kway <rhyme label="c" type="f">kuuren</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Om dat de wond lank zou <rhyme label="c" type="f" corresp="#s10:l5">duren</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">En zy zeggen het geneest <rhyme label="d" type="m">wel</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">Doet hen rijden in post naar <rhyme label="d" type="m" corresp="#s10:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Daar moet ook eenen Doctoor <rhyme label="a" type="m">zyn</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Die schryft goei en kwaai <rhyme label="a" type="m" corresp="#s11:l1">medicyn</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Om lang te duuren met <rhyme label="b" type="m">gemak</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">En zo te krygen 't geld in 't <rhyme label="b" type="m" corresp="#s11:l3">zak</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Om 't Werkvolk wel te <rhyme label="c" type="f">geneezen</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Als 'er eens eenen ziek zou <rhyme label="c" type="f" corresp="#s11:l5">weezen</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Tot verlengenis van het <rhyme label="d" type="m">spel</rhyme>,</l>
        <l id="s11:l8" met="4" type="-+">Hy gaat ryden in post naar <rhyme label="d" type="m" corresp="#s11:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Brengt eenen Apotheker <rhyme label="a" type="m">dan</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Die Medicyn leveren <rhyme label="a" type="m" corresp="#s12:l1">kan</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Wie kan hun rekening maken <rhyme label="b" type="m">kwaad</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Voor eenen Schelling een <rhyme label="b" type="m" corresp="#s12:l3">Ducaat</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">En zomwylen verlegen <rhyme label="c" type="f">Kruijen</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Die wy zouden de straat op <rhyme label="c" type="f" corresp="#s12:l5">bruijen</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Hy zegt zy zyn sterk en <rhyme label="d" type="m">fel</rhyme>,</l>
        <l id="s12:l8" met="4" type="-+">Gaat mee ryden in post naar <rhyme label="d" type="m" corresp="#s12:l7">d'hel</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Die niet wil aan dat werk <rhyme label="a" type="m">gaan</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Is lieber om te laaten <rhyme label="a" type="m" corresp="#s13:l1">staan</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Als g'ieder heerlyk diend <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Gelyk wy doen met ons <rhyme label="b" type="m" corresp="#s13:l3">papier</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Wilt gy Lied'kens kopen myn <rhyme label="c" type="f">vrinden</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Gy en zult 'er in d'hel geen <rhyme label="c" type="f" corresp="#s13:l5">vinden</rhyme>,</l>
        <l id="s13:l7" met="4" type="-+">Want deeze stiel is niet <rhyme label="d" type="m">kruwel</rhyme>,</l>
        <l id="s13:l8" met="4" type="-+">Om te ryden in post naar <rhyme label="d" type="m" corresp="#s13:l7">d'hel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
