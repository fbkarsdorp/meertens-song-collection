  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Myn drystol blyst steeds <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Als ik hem zweepen <rhyme label="b" type="m">wil</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Maar houd ik op met <rhyme label="a" type="f" corresp="#s1:l1">noopen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Straks ligt hy werkloos <rhyme label="b" type="m" corresp="#s1:l2">stil</rhyme>, -</l>
        <l id="s1:l5" met="3" type="-+">Wien 't luk steeds rust doet <rhyme label="c" type="f">smaaken</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Word veeltyds traag tot <rhyme label="d" type="m">goed</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Maar als hem rampen <rhyme label="c" type="f" corresp="#s1:l5">raaken</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ontwaakt vaak Deugd en <rhyme label="d" type="m" corresp="#s1:l6">Moed</rhyme>,</l>
      </lg>
    </lg>
