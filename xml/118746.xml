  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">'t Zy waer ick ben, of waer ick <rhyme label="a" type="m">kom</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Gy mijner zielen <rhyme label="a" type="m" corresp="#s1:l1">Bruidegom</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Al daer van my gevonden <rhyme label="b" type="m">werdt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Want ick u mede draegh in 't <rhyme label="b" type="m" corresp="#s1:l3">hert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gy zijt de luister mijner <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Gy zijt het al wat ick <rhyme label="a" type="m" corresp="#s2:l1">begeer</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">De nacht die licht my als de <rhyme label="b" type="m">dach</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Als ick u licht maer hebben <rhyme label="b" type="m" corresp="#s2:l3">mach</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wanneer sal ick volkomen <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Versadight van uw soet <rhyme label="a" type="m" corresp="#s3:l1">aenschijn</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">'k Verlangh, o Iesu, ick <rhyme label="b" type="m">verlangh</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Door uwer liefden soet <rhyme label="b" type="m" corresp="#s3:l3">gedrangh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Terwijl ick hier op aerden <rhyme label="a" type="m">dwael</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Soo sucht en klaegh ick <rhyme label="a" type="m" corresp="#s4:l1">menighmael</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Om dat veel quaedt en <rhyme label="b" type="m">tegenheidt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">My steedts verhindert en <rhyme label="b" type="m" corresp="#s4:l3">verleidt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een ongeregelt aerdtsch <rhyme label="a" type="m">gewoel</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Koomt in my storen het <rhyme label="a" type="m" corresp="#s5:l1">gevoel</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Van uwe lieffelicke <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Gantsch tegen mijnen danck en <rhyme label="b" type="m" corresp="#s5:l3">sin</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ach! als mijn ziel haer tot u <rhyme label="a" type="m">spoeidt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Soo voelt sty haer gelijck <rhyme label="a" type="m" corresp="#s6:l1">geboeidt</rhyme></l>
        <l id="s6:l3" met="4" type="-+">En vast gebonden aen der <rhyme label="b" type="m">aerdt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat my niet weinigh en <rhyme label="b" type="m" corresp="#s6:l3">beswaert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Heft gy my als met vleug'len <rhyme label="a" type="m">op</rhyme>.</l>
        <l id="s7:l2" met="4" type="-+">Tot dat ick d'alderhooghste <rhyme label="a" type="m" corresp="#s7:l1">top</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Van vryicheidt bereicken <rhyme label="b" type="m">magh</rhyme>;</l>
        <l id="s7:l4" met="4" type="-+">Laet u bewegen mijn <rhyme label="b" type="m" corresp="#s7:l3">geklagh</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Tot dat ick gantsch en sonder <rhyme label="a" type="m">maet</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Van uwe min sal zijn <rhyme label="a" type="m" corresp="#s8:l1">versaedt</rhyme>;'</l>
        <l id="s8:l3" met="4" type="-+">En tot die volheidt eens <rhyme label="b" type="m">geraeck</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Waer van ick hier 't beginsel <rhyme label="b" type="m" corresp="#s8:l3">smaeck</rhyme>.</l>
      </lg>
    </lg>
  </text>
