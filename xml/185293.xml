<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>185293</id>
    <date>
      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>de rijp</orginal-name>
      <standard-name>De Rijp, The Netherlands</standard-name>
      <coordinates>
        <lon>52.5548999</lon>
        <lat>4.8440884</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Een meisje op een riviertje zat</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ick minne eenen goeden <rhyme label="a" type="m">vriendt</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">En my en <rhyme label="a" type="m" corresp="#s1:l1">dient</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Geen andernick <rhyme label="b" type="f">candert</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Deur sijn <rhyme label="c" type="m">bystant</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Slaen mijn <rhyme label="c" type="m" corresp="#s1:l4">vyandt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick sijnde in dese wilde <rhyme label="a" type="m">Zee</rhyme></l>
        <l id="s2:l2" met="2" type="-+">My sal geen <rhyme label="a" type="m" corresp="#s2:l1">Wee</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Omswermen // <rhyme label="b" type="f">beschermen</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Can hy wel <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Blijf ick hem <rhyme label="c" type="m" corresp="#s2:l4">by</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick sochte hem over bergh en <rhyme label="a" type="m">dal</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Ick had hem <rhyme label="a" type="m" corresp="#s3:l1">al</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Verlooren // maer <rhyme label="b" type="f">hooren</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Liet hy sijn <rhyme label="c" type="m">stem</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Doen vond’ ick <rhyme label="c" type="m" corresp="#s3:l4">hem</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Verlaten en wil ick hem niet <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Om geen <rhyme label="a" type="m" corresp="#s4:l1">verzeer</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Geen dingen // my <rhyme label="b" type="f">dwinghen</rhyme></l>
        <l id="s4:l4" met="2" type="-+">En sullen <rhyme label="c" type="m">van</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Hem mijnen <rhyme label="c" type="m" corresp="#s4:l4">man</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy is mijn alderbeste <rhyme label="a" type="m">deel</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Slot en <rhyme label="a" type="m" corresp="#s5:l1">Casteel</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Al quamen // te <rhyme label="b" type="f">samen</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Vyanden, <rhyme label="c" type="m">ick</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Hebbe geen <rhyme label="c" type="m" corresp="#s5:l4">schrick</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy is die in droefheyt <rhyme label="a" type="m">altoost</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Mijn Ziele <rhyme label="a" type="m" corresp="#s6:l1">troost</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Al schijnen // veel <rhyme label="b" type="f">pijnen</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Hier ontrent <rhyme label="c" type="m">mijn</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Lichaem te <rhyme label="c" type="m" corresp="#s6:l4">sijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Heb ick slechts hem, k’en vrage <rhyme label="a" type="m">doch</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Na Hemel, <rhyme label="a" type="m" corresp="#s7:l1">noch</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Na eerde // van <rhyme label="b" type="f">weerde</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Sulcks in den <rhyme label="c" type="m">graet</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Hy boven <rhyme label="c" type="m" corresp="#s7:l4">gaet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy is alleen die my <rhyme label="a" type="m">regiert</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Weydt ende <rhyme label="a" type="m" corresp="#s8:l1">stiert</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Om ‘t leven // te <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">My gheen <rhyme label="c" type="m">ghetal</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Ontbreken <rhyme label="c" type="m" corresp="#s8:l4">sal</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Onder sijn schaduwen <rhyme label="a" type="m">bevrijt</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">Wtghebreyt <rhyme label="a" type="m" corresp="#s9:l1">wijt</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Ick sitte // geen <rhyme label="b" type="f">hitte</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Noch Sonne <rhyme label="c" type="m">gloet</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">My pijne <rhyme label="c" type="m" corresp="#s9:l4">doet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Buyten hem is so weynich <rhyme label="a" type="m">vreucht</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">Die my <rhyme label="a" type="m" corresp="#s10:l1">verheucht</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">Ick vinde // doch <rhyme label="b" type="f">inde</rhyme></l>
        <l id="s10:l4" met="2" type="-+">Heel werelt <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Dan veel <rhyme label="c" type="m" corresp="#s10:l4">verdriet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Daerom so heb ick grooten <rhyme label="a" type="m">lust</rhyme></l>
        <l id="s11:l2" met="2" type="-+">Te zijn in <rhyme label="a" type="m" corresp="#s11:l1">rust</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Daer ‘t croonen // <rhyme label="b" type="f">vertoonen</rhyme></l>
        <l id="s11:l4" met="2" type="-+">Sal op den <rhyme label="c" type="m">groen</rhyme></l>
        <l id="s11:l5" met="2" type="-+">Berge <rhyme label="c" type="m" corresp="#s11:l4">Syoen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
