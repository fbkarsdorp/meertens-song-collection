  <author>Henricus Costerius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Waer is die dochter van <rhyme label="a" type="m">Syon</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ic soudese blijde <rhyme label="b" type="f">maken</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ic soude haer eene bootschap <rhyme label="a" type="m" corresp="#s1:l1">doen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van alsoo grooten <rhyme label="b" type="f" corresp="#s1:l2">saken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Doen men al die werelt <rhyme label="a" type="m">beschreef</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Doen ginck die maghet <rhyme label="b" type="f">sware</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Te Bethleem daer sy doen <rhyme label="a" type="m" corresp="#s2:l1">bleef</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ende ontfinck haer kint <rhyme label="b" type="f" corresp="#s2:l2">aldare</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een ghelas al schijnter <rhyme label="a" type="m">door</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ten breckt niet vander <rhyme label="b" type="f">sonnen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Dus heeft die maghet nae en <rhyme label="a" type="m" corresp="#s3:l1">voor</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ioncfrou een kint <rhyme label="b" type="f" corresp="#s3:l2">ghewonnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een duysternis is ons <rhyme label="a" type="m">verclaert</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Een licht is ons <rhyme label="b" type="f">verresen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Een maghet heeft een kint <rhyme label="a" type="m" corresp="#s4:l1">ghebaert</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat dunct my wonder <rhyme label="b" type="f" corresp="#s4:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nv is hy teeder ende <rhyme label="a" type="m">cranck</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Een maghet sal hem <rhyme label="b" type="f">voeden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Wy moghen hem wel weten <rhyme label="a" type="m" corresp="#s5:l1">danck</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van sijn groote <rhyme label="b" type="f" corresp="#s5:l2">aermoeden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy thoont zijn <rhyme label="a" type="m">goedertierenheyt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wijlen was hy <rhyme label="b" type="f">verbolghen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Hy drijft soo groote <rhyme label="a" type="m" corresp="#s6:l1">ootmoedicheyt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Wy connen hem niet <rhyme label="b" type="f" corresp="#s6:l2">gheuolghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maria nam hem op haren <rhyme label="a" type="m">schoot</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Sy custen hem aen den <rhyme label="b" type="f">monde</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Die minne die hadde sy soo <rhyme label="a" type="m" corresp="#s7:l1">groot</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Tot hem in allen <rhyme label="b" type="f" corresp="#s7:l2">stonden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Lof Heere moet v altoos <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Wilt ons altijt <rhyme label="b" type="f">gheleyden</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Met die waerde moeder <rhyme label="a" type="m" corresp="#s8:l1">dijn</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Als wy alle van hier <rhyme label="b" type="f" corresp="#s8:l2">scheyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
