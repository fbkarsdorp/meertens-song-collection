  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn Zaey-man // een Godd'lijc <rhyme label="a" type="f">Maey-man</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wtgaende wel <rhyme label="b" type="m">besteldt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ginck zaeyen, maer siet de <rhyme label="c" type="f">Craeyen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Atent ras op neffens 't <rhyme label="b" type="m" corresp="#s1:l2">veldt</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Maer 't aar <rhyme label="d" type="m">verdween</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">'t Lach op <rhyme label="d" type="m" corresp="#s1:l5">steen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Alwaer 't de Sonne te seer <rhyme label="d" type="m" corresp="#s1:l5">bescheen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Den Heere // de derde <rhyme label="a" type="f">keere</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ginck en wierp noch eens met <rhyme label="b" type="m">maet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer de doornen // met scherpe <rhyme label="c" type="f">hoornen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Versmachtent, en verdrucktent <rhyme label="b" type="m" corresp="#s2:l2">zaet</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">De rest dat <rhyme label="d" type="m">viel</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Niet dun, niet <rhyme label="d" type="m" corresp="#s2:l5">iel</rhyme></l>
        <l id="s2:l7" met="4" type="-+">In goeder aerdt, in goeder <rhyme label="d" type="m" corresp="#s2:l5">ziel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Heb'j' ooren // komt dan eens <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sprack hy tot al de <rhyme label="b" type="m">Lien</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">'K sal verklaren // k sal <rhyme label="c" type="f">openbaren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Opdat u ooghen moghen <rhyme label="b" type="m" corresp="#s3:l2">sien</rhyme>;</l>
        <l id="s3:l5" met="2" type="-+">'tZaedt is Godts <rhyme label="d" type="m">Woordt</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Dat gh'hebt <rhyme label="d" type="m" corresp="#s3:l5">ghehoort</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Och! of het altijt bracht vruchten <rhyme label="d" type="m" corresp="#s3:l5">voort</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer och armen // wie sel <rhyme label="a" type="f">ontfarmen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat 't meeste zaedt dus valt te <rhyme label="b" type="m">loor</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hier Helsche Geesten// daer 'sWeerelts <rhyme label="c" type="f">Feesten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Daer steene herten als <rhyme label="b" type="m" corresp="#s4:l2">yvoor</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Smijtent gins <rhyme label="d" type="m">heen</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Soo wel in <rhyme label="d" type="m" corresp="#s4:l5">steen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Als platte landen, een fout <rhyme label="d" type="m" corresp="#s4:l5">ghemeen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Nu dan wacker // bereydt den <rhyme label="a" type="f">Acker</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van uw' arme zielen <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Door ploeghen // met goet <rhyme label="c" type="f">ghenoeghen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Door 't dringhen van 't vleesch <rhyme label="b" type="m" corresp="#s5:l2">rebel</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Maeckt doch, dat 't <rhyme label="d" type="m">zaet</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Niet en <rhyme label="d" type="m" corresp="#s5:l5">vergaet</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Tot eeuwich treuren, tot eeuwich <rhyme label="d" type="m" corresp="#s5:l5">quaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Denckt te degen // dat waer Godts <rhyme label="a" type="f">zegen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dit Wilt was gantsch <rhyme label="b" type="m">bedijdt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat die aerde // heel <rhyme label="c" type="f">onvermaerde</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat die grondt is <rhyme label="b" type="m" corresp="#s6:l2">vermaledijdt</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Komt dan en <rhyme label="d" type="m">hoort</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Brenght vruchten <rhyme label="d" type="m" corresp="#s6:l5">voort</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Op dat den Zaey-man noyt zy <rhyme label="d" type="m" corresp="#s6:l5">verstoort</rhyme>.</l>
      </lg>
    </lg>
  </text>
