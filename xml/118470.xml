    <melody>Het daagt in de oosten</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Het daget uit den <rhyme label="a" type="f">Oosten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Het licht schijnt <rhyme label="b" type="m">over-al</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Laat ons uw licht <rhyme label="a" type="f" corresp="#s1:l1">vertroosten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">O Iesus, hier in 't <rhyme label="b" type="m" corresp="#s1:l2">dal</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Laat ons u licht <rhyme label="c" type="f">vertroosten</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">licht <rhyme label="c" type="f" corresp="#s1:l5">vertroosten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wijl met haar <rhyme label="a" type="f">ooge-leden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">De goude daag'raat <rhyme label="b" type="m">blikt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Toon ook uw aanschijn <rhyme label="a" type="f" corresp="#s2:l1">heden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat ons de ziel <rhyme label="b" type="m" corresp="#s2:l2">verquikt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Toon ook u aanschijn <rhyme label="c" type="f">heden</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">aanschijn <rhyme label="c" type="f" corresp="#s2:l5">heden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Son t'aanschouwen <rhyme label="a" type="f">mogen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Is aangenaam en <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Voor aller menschen <rhyme label="a" type="f" corresp="#s3:l1">oogen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Het licht is wonder <rhyme label="b" type="m" corresp="#s3:l2">soet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Voor aller menschen <rhyme label="c" type="f">oogen</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">menschen <rhyme label="c" type="f" corresp="#s3:l5">oogen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maar soo gy niet uw <rhyme label="a" type="f">stralen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">O heil-son, op ons <rhyme label="b" type="m">schiet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Tot troost in soo veel <rhyme label="a" type="f" corresp="#s4:l1">qualen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Helpt alle licht ons <rhyme label="b" type="m" corresp="#s4:l2">niet</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Tot troost in soo veel <rhyme label="c" type="f">qualen</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">soo veel <rhyme label="c" type="f" corresp="#s4:l5">qualen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Want over goed' en <rhyme label="a" type="f">quade</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Schijnt d'aardsche Son te <rhyme label="b" type="m">saam</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Gy schijnt met uw <rhyme label="a" type="f" corresp="#s5:l1">genade</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die vreesen uwen <rhyme label="b" type="m" corresp="#s5:l2">Naam</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Gy schijnt met uw <rhyme label="c" type="f">genade</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">uw <rhyme label="c" type="f" corresp="#s5:l5">genade</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dies licht ons doch van <rhyme label="a" type="f">verre</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Van 's Hemels hoogste <rhyme label="b" type="m">top</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">O held're <rhyme label="a" type="f" corresp="#s6:l1">Morsten-sterre</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ga in ons'herten <rhyme label="b" type="m" corresp="#s6:l2">op</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">O held're <rhyme label="c" type="f">Morgen-sterre</rhyme>,</l>
        <l id="s6:l6" met="2" type="+-"><rhyme label="c" type="f" corresp="#s6:l5">Morgen-sterre</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Laat, als de Daagraat, <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Uw uitgank zijn <rhyme label="b" type="m">bereidt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat op ons schijn' uw <rhyme label="a" type="f" corresp="#s7:l1">eere</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En groote <rhyme label="b" type="m" corresp="#s7:l2">heerlikheit</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Dat op ons schijn' uw <rhyme label="c" type="f">eere</rhyme>,</l>
        <l id="s7:l6" met="2" type="+-">schijn' uw <rhyme label="c" type="f" corresp="#s7:l5">eere</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Tot dat wy, na lang <rhyme label="a" type="f">toeven</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Eens komen <rhyme label="b" type="m">allegaar</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Daar Son noch Maan <rhyme label="a" type="f" corresp="#s8:l1">behoeven</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Te schijnen voor of <rhyme label="b" type="m" corresp="#s8:l2">naar</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Daar Son noch Maan <rhyme label="c" type="f">behoeven</rhyme>,</l>
        <l id="s8:l6" met="2" type="+-">Maan <rhyme label="c" type="f" corresp="#s8:l5">behoeven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Mits eeuwig ons, na <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Verlicht Godts <rhyme label="b" type="m">heerlikheit</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Gy sult de keersse <rhyme label="a" type="f" corresp="#s9:l1">wesen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">O Lam, die ons <rhyme label="b" type="m" corresp="#s9:l2">geleidt</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Gy sult de keersse <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s9:l6" met="2" type="+-">keersse <rhyme label="c" type="f" corresp="#s9:l5">wesen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">De vreugt-dag komt al <rhyme label="a" type="f">nader</rhyme>.</l>
        <l id="s10:l2" met="3" type="-+">Wy sullen blinken <rhyme label="b" type="m">t'hans</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">In 't rijk van onsen <rhyme label="a" type="f" corresp="#s10:l1">Vader</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Gelijk de Son in <rhyme label="b" type="m" corresp="#s10:l2">glans</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">In 't rijk van onsen <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s10:l6" met="2" type="+-">onsen <rhyme label="c" type="f" corresp="#s10:l5">Vader</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Hier kent m' uw arme Bruit <rhyme label="a" type="f">niet</rhyme>;</l>
        <l id="s11:l2" met="3" type="-+">Daar spreekt men van haar <rhyme label="b" type="m">staat</rhyme>:</l>
        <l id="s11:l3" met="3" type="-+">Wie is sy die daar uit <rhyme label="a" type="f" corresp="#s11:l1">siet</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Gelijk de <rhyme label="b" type="m" corresp="#s11:l2">Dageraat</rhyme>?</l>
        <l id="s11:l5" met="3" type="-+">Wie is sy die daar uit <rhyme label="c" type="f">siet</rhyme>,</l>
        <l id="s11:l6" met="2" type="+-">die daar uit <rhyme label="c" type="f" corresp="#s11:l5">siet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Soo schoon gelijk de <rhyme label="a" type="f">Mane</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Gelijk de Son soo <rhyme label="b" type="m">klaar</rhyme>?</l>
        <l id="s12:l3" met="3" type="-+">Breng ons van 's werelts <rhyme label="a" type="f" corresp="#s12:l1">bane</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">O Jesus, eindlik <rhyme label="b" type="m" corresp="#s12:l2">daar</rhyme>.</l>
        <l id="s12:l5" met="3" type="-+">Breng ons van's werelts <rhyme label="c" type="f">bane</rhyme>,</l>
        <l id="s12:l6" met="2" type="+-">'s werelts <rhyme label="c" type="f" corresp="#s12:l5">bane</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
