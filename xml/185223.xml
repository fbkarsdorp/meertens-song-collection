      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>de rijp</orginal-name>
      <standard-name>De Rijp, The Netherlands</standard-name>
      <coordinates>
        <lon>52.5548999</lon>
        <lat>4.8440884</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Era di maggio</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Och mocht ick <rhyme label="a" type="f">sincken</rhyme></l>
        <l id="s1:l2" met="4" type="-+">In u fonteyn der liefden <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">En daer <rhyme label="a" type="f" corresp="#s1:l1">verdrincken</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Tot troost van mijn bedruckt <rhyme label="b" type="m" corresp="#s1:l2">gemoet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soo soud’ ick vrolick <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Al in dat Rijcke <rhyme label="c" type="m" corresp="#s1:l5">dijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ghy went myn <rhyme label="a" type="f">gangen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Na uwen wil buyten <rhyme label="b" type="m">verstant</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Spoedich <rhyme label="a" type="f" corresp="#s2:l1">verlanghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Doet my verwachten op u <rhyme label="b" type="m" corresp="#s2:l2">handt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Mijn eyghen kracht <rhyme label="c" type="m">ontvremt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hebt ghy het hert <rhyme label="c" type="m" corresp="#s2:l5">beklemt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">O <rhyme label="a" type="f">Menschen-Hoeder</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die niemant in ‘t verderf en <rhyme label="b" type="m">brenght</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Maeckt my doch <rhyme label="a" type="f" corresp="#s3:l1">vroeder</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Waerom ghy alle dingh <rhyme label="b" type="m" corresp="#s3:l2">gehenght</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">‘t Doet ons in ‘t herte <rhyme label="c" type="m">wee</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat wy zijn als een <rhyme label="c" type="m" corresp="#s3:l5">vee</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">In ‘s menschen <rhyme label="a" type="f">ooghen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hem alle dinck wonder <rhyme label="b" type="m">toedraeght</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">‘t Oordeel <rhyme label="a" type="f" corresp="#s4:l1">bedroghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Na menschelicke reden <rhyme label="b" type="m" corresp="#s4:l2">vraeght</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Maer boven ons <rhyme label="c" type="m">verstant</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Regiert ghy deur u <rhyme label="c" type="m" corresp="#s4:l5">hant</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">‘t Is niet <rhyme label="a" type="f">ghelegen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">In yemants macht o Heere <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Te gaen u <rhyme label="a" type="f" corresp="#s5:l1">weghen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Van u het alles comen <rhyme label="b" type="m" corresp="#s5:l2">moet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ons ziel na u <rhyme label="c" type="m">verlanght</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Tot datse troost <rhyme label="c" type="m" corresp="#s5:l5">ontfanght</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Die u <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Leyt ghy door cruys en veel <rhyme label="b" type="m">dangier</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">En dat haer <rhyme label="a" type="f" corresp="#s6:l1">sinnen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Vervullen met het aertsch <rhyme label="b" type="m" corresp="#s6:l2">playsier</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Laet ghy soo henen <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Hoe can men dit <rhyme label="c" type="m" corresp="#s6:l5">verstaen</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Ghy slaet en <rhyme label="a" type="f">heelet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">V hant vernedert en <rhyme label="b" type="m">verhooght</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Ghy geeft en <rhyme label="a" type="f" corresp="#s7:l1">deelet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Al waer dat u ghenade <rhyme label="b" type="m" corresp="#s7:l2">ooght</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Toont ons u aenschijn <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Liefhebber van ‘t <rhyme label="c" type="m" corresp="#s7:l5">gemoet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Of wy niet <rhyme label="a" type="f">weten</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Van al wat ghy hebt in den <rhyme label="b" type="m">sin</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Vwe <rhyme label="a" type="f" corresp="#s8:l1">secreten</rhyme></l>
        <l id="s8:l4" met="4" type="-+">By u verborgen van ‘t <rhyme label="b" type="m" corresp="#s8:l2">begin</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">De Liefd’ ons weten <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Het eynd’ sal wesen <rhyme label="c" type="m" corresp="#s8:l5">goet</rhyme>.</l>
      </lg>
    </lg>
  </text>
