  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Jesus reysde heen, en <rhyme label="a" type="m">weer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Door Dorpen, Steeden al te <rhyme label="b" type="m">mael</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En preekten 's Evangelisch <rhyme label="a" type="m" corresp="#s1:l1">Leer</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Genas de sieken van haer <rhyme label="b" type="m" corresp="#s1:l2">quael</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sijn twaelt Discipels reysden <rhyme label="a" type="m">mee'</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En eenigh Vrouwen die hy <rhyme label="b" type="m">hadt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Verlost van hare siekt en <rhyme label="a" type="m" corresp="#s2:l1">wee</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En van den quaey die haer <rhyme label="b" type="m" corresp="#s2:l2">besadt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En onder deese was 'er <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Verlost van seven Duyvels <rhyme label="b" type="m">snoodt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die heet Maria <rhyme label="a" type="m" corresp="#s3:l1">Magdaleen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die volghde hem met liefde <rhyme label="b" type="m" corresp="#s3:l2">groot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En ook Joanna Chuses <rhyme label="a" type="m">Vrouw</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Susanna, met veel <rhyme label="b" type="m">anderen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die hem te samen dienden <rhyme label="a" type="m" corresp="#s4:l1">trouw</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Van hare rijke <rhyme label="b" type="m" corresp="#s4:l2">middelen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy oversiet het groot <rhyme label="a" type="m">getal</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Der volken, en krijght <rhyme label="b" type="m">meedelijdt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Als Schapen sijn se over <rhyme label="a" type="m" corresp="#s5:l1">al</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">De welke sijn haer Harder <rhyme label="b" type="m" corresp="#s5:l2">quijdt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En hy tot sijn Discipels <rhyme label="a" type="m">seydt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Den Oeghst is groot, maer weynigh <rhyme label="b" type="m">seer</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Sijn die tot werken sijn <rhyme label="a" type="m" corresp="#s6:l1">bereydt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Daeromme dan soo bidt den <rhyme label="b" type="m" corresp="#s6:l2">Heer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Bidt  dan den Heere van den <rhyme label="a" type="m">Oeghst</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat hy werk-lieden sende <rhyme label="b" type="m">voort</rhyme></l>
        <l id="s7:l3" met="4" type="-+">In sijnen Oeghst, die leydt seer <rhyme label="a" type="m" corresp="#s7:l1">woest</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dat die dien maeijen als 't <rhyme label="b" type="m" corresp="#s7:l2">behoort</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gy goede Jesu selfs wis <rhyme label="a" type="m">bendt</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Heer van den Oeghst, ons niet <rhyme label="b" type="m">verlaet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Maer uw Dienaren tot ons <rhyme label="a" type="m" corresp="#s8:l1">sendt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die welke passen op uw <rhyme label="b" type="m" corresp="#s8:l2">Saet</rhyme>.</l>
      </lg>
    </lg>
  </text>
