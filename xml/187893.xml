<song>
  <meta>
    <id>187893</id>
    <date>
      <year-start>1681</year-start>
      <year-end>1681</year-end>
    </date>
    <location>
      <orginal-name>alkmaar</orginal-name>
      <standard-name>Alkmaar, The Netherlands</standard-name>
      <coordinates>
        <lon>52.6312592</lon>
        <lat>4.7503798</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Het vinnige stralen van de zon</melody>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DAt eenig Godlijk weezen <rhyme label="a" type="m">zoet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wil uwen Geest <rhyme label="b" type="f">bedouwen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op dat gy met een rein <rhyme label="a" type="m" corresp="#s1:l1">gemoed</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Gods aanzicht meugt <rhyme label="b" type="f" corresp="#s1:l2">aanschouwen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Wiens zuiver licht // de herten <rhyme label="c" type="m">sticht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die vast op hem <rhyme label="d" type="f">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Zie welken liefde ons <rhyme label="a" type="m">geschied</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat wy Gods Kinders <rhyme label="b" type="f">hieten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maar openbaar en is 't noch <rhyme label="a" type="m" corresp="#s2:l1">niet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wat wy zullen <rhyme label="b" type="f" corresp="#s2:l2">genieten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Wanneer hy zal // zijn liefde <rhyme label="c" type="m">al</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Over de zijne <rhyme label="d" type="f">gieten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zijn Engelen met zoet <rhyme label="a" type="m">geluid</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Zullen zijn <rhyme label="b" type="f">uit-verkooren</rhyme></l>
        <l id="s3:l3" met="4" type="-+">In alle plaatzen zoeken <rhyme label="a" type="m" corresp="#s3:l1">uit</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En brengenze te <rhyme label="b" type="f" corresp="#s3:l2">vooren</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Daar zal niet een // hoe arm oft <rhyme label="c" type="m">kleen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Voor Hem blijven <rhyme label="d" type="f">verlooren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al zijnze kreupel, lam, of <rhyme label="a" type="m">blind</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Veracht ende <rhyme label="b" type="f">verschooven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Als menze rein van herten <rhyme label="a" type="m" corresp="#s4:l1">vind</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Men zalze brengen <rhyme label="b" type="f" corresp="#s4:l2">booven</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Daar zullen zy // van herten <rhyme label="c" type="m">bly</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">God in der klaarheid <rhyme label="d" type="f">looven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wand door de liefde, die Hy <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Maakt Hyze hem <rhyme label="b" type="f">gelijke</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Zijn eygen klaarheid Hy haar <rhyme label="a" type="m" corresp="#s5:l1">geeft</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Al in zijns Vaaders <rhyme label="b" type="f" corresp="#s5:l2">rijke</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Zijn heerlijkheid // is haar <rhyme label="c" type="m">bereid</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Op dat zijn liefde <rhyme label="d" type="f">blijke</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Veel duizend heiligen, <rhyme label="a" type="m">valiant</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Zullen daar blinken <rhyme label="b" type="f">schoone</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ontfangen van des Heere <rhyme label="a" type="m" corresp="#s6:l1">hand</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Des leevens rijke <rhyme label="b" type="f" corresp="#s6:l2">kroone</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Elk een zal daar // verschijnen <rhyme label="c" type="m">klaar</rhyme></l>
        <l id="s6:l6" met="3" type="-+">In zijn eigen <rhyme label="d" type="f">persoone</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De oude vrienden lang voor <rhyme label="a" type="m">heen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Gestorven en <rhyme label="b" type="f">vergeeten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die zullen daar koomen by <rhyme label="a" type="m" corresp="#s7:l1">een</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Heemelze spijze <rhyme label="b" type="f" corresp="#s7:l2">eeten</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Als zy verheugd // en vol van <rhyme label="c" type="m">vreugd</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Te zaamen zijn <rhyme label="d" type="f">gezeeten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De Schaapkens die nu zijn <rhyme label="a" type="m">verstroid</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Hier ende daar <rhyme label="b" type="f">verscheiden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Die werden t' zaamen dan <rhyme label="a" type="m" corresp="#s8:l1">gekoid</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Het Lam dat zalze <rhyme label="b" type="f" corresp="#s8:l2">weiden</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">En nimmermeer // zullen zy <rhyme label="c" type="m">we'er</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Van malkanderen <rhyme label="d" type="f">scheiden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hoe lieff'lijk zal met vreugden <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Dat zoet gezelschap <rhyme label="b" type="f">leeven</rhyme>?</l>
        <l id="s9:l3" met="4" type="-+">Elk een zal geern de minste <rhyme label="a" type="m" corresp="#s9:l1">zijn</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Uit liefde zoo <rhyme label="b" type="f" corresp="#s9:l2">gedreeven</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Waar 't moogelijk // het gantze <rhyme label="c" type="m">rijk</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Zoude zy <rhyme label="d" type="f">over-geeven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Want zy als een door-luchtig <rhyme label="a" type="m">vier</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Van liefde zullen <rhyme label="b" type="f">gloeyen</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">Al wat zy geeven <rhyme label="a" type="m" corresp="#s10:l1">goedertier</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Zal honderd-foud <rhyme label="b" type="f" corresp="#s10:l2">in-vloeyen</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">En haar fontein // en woord niet <rhyme label="c" type="m">klein</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Maar zy zal eeuwig <rhyme label="d" type="f">groeyen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Al in haars Vaaders lieve <rhyme label="a" type="m">huiz</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Zijn wooningen by <rhyme label="b" type="f">veelen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Daar zullen zy bevrijd van <rhyme label="a" type="m" corresp="#s11:l1">kruis</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Zeer lieffelijk in <rhyme label="b" type="f" corresp="#s11:l2">speelen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Dat duizend jaar // een dag is <rhyme label="c" type="m">maar</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Zoo weinig zal 't <rhyme label="d" type="f">verveelen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Uit aangesporde zoete <rhyme label="a" type="m">min</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Zullen zy met <rhyme label="b" type="f">verkloeken</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Als Engelen vliegen uit en <rhyme label="a" type="m" corresp="#s12:l1">in</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Malkanderen <rhyme label="b" type="f" corresp="#s12:l2">bezoeken</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Want liefd' is daar // in 't <rhyme label="c" type="m">openbaar</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Niet heimelijk in <rhyme label="d" type="f">hoeken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hier is de liefd met vlees <rhyme label="a" type="m">bekleed</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Gekrenkt in haar <rhyme label="b" type="f">vermoogen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Zoo datme niet zoo klaar en <rhyme label="a" type="m" corresp="#s13:l1">weet</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Waar dat zy leid <rhyme label="b" type="f" corresp="#s13:l2">geboogen</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Alleen present // is zy <rhyme label="c" type="m">bekend</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Den Goddelijken <rhyme label="d" type="f">oogen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Het is de liefde wel een <rhyme label="a" type="m">pijn</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Als menze niet kan <rhyme label="b" type="f">vaalen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Als zy dan zal zoo kenbaar <rhyme label="a" type="m" corresp="#s14:l1">zijn</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Hoe wil zy haar uit <rhyme label="b" type="f" corresp="#s14:l2">laaten</rhyme>?</l>
        <l id="s14:l5" met="4" type="-+">Met wat een vreugd // zal zy haar <rhyme label="c" type="m">deugd</rhyme></l>
        <l id="s14:l6" met="3" type="-+">Uit-breiden booven <rhyme label="d" type="f">maaten</rhyme>?</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Eens deels is hier <rhyme label="a" type="m">getuigenis</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Hoe groot de vreugd zal <rhyme label="b" type="f">weezen</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">God aan te zien gelijk Hy <rhyme label="a" type="m" corresp="#s15:l1">is</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">'t Gedenken doet <rhyme label="b" type="f" corresp="#s15:l2">geneezen</rhyme>:</l>
        <l id="s15:l5" met="4" type="-+">Hoe veel te meer // als wy den <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Aanschouwen in het <rhyme label="d" type="f">weezen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Wie deeze hoope in hem <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Reinigd hem zelven <rhyme label="b" type="f">meede</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Gelijk hy rein is, en hy <rhyme label="a" type="m" corresp="#s16:l1">leefd</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Met God in <rhyme label="b" type="f" corresp="#s16:l2">eenigheeden</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Al komt 'er druk // of <rhyme label="c" type="m">on-geluk</rhyme>.</l>
        <l id="s16:l6" met="3" type="-+">In-wendig heeft hy <rhyme label="d" type="f">vreede</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
