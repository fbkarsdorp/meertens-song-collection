  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Des vaders glorij scijnsel <rhyme label="a" type="m">[.]eel</rhyme></l>
        <l id="s1:l2" met="4" type="-+">vuijt licht, voerbrengen lichte <rhyme label="a" type="m" corresp="#s1:l1">veel</rhyme></l>
        <l id="s1:l3" met="4" type="-+">der lichten licht, des lichts <rhyme label="b" type="m">fonteijn</rhyme></l>
        <l id="s1:l4" met="4" type="-+">verlichtende den dach <rhyme label="b" type="m" corresp="#s1:l3">gemeijn</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O ware son valt in ons <rhyme label="a" type="m">neer</rhyme></l>
        <l id="s2:l2" met="4" type="-+">met ewich licht blinckende <rhyme label="a" type="m" corresp="#s2:l1">teer</rhyme></l>
        <l id="s2:l3" met="4" type="-+">den strael des geest heijlich <rhyme label="b" type="m">altijt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">in ons verstant oock storte <rhyme label="b" type="m" corresp="#s2:l3">wijt</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Met iuer nomen wij v <rhyme label="a" type="m">vaer</rhyme></l>
        <l id="s3:l2" met="4" type="-+">vader van ewich glorij <rhyme label="a" type="m" corresp="#s3:l1">claer</rhyme></l>
        <l id="s3:l3" met="4" type="-+">die s'gratij machtich vader <rhyme label="b" type="m">zijt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">neempt wech den schult <rhyme label="b" type="m" corresp="#s3:l3">vermaledijt</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ons handeling maeck is <rhyme label="a" type="m">geschict</rhyme></l>
        <l id="s4:l2" met="4" type="-+">der nijders tongen van ons <rhyme label="a" type="m" corresp="#s4:l1">licht</rhyme></l>
        <l id="s4:l3" met="4" type="-+">voorspoedicht alle <rhyme label="b" type="m">tegenspoet</rhyme></l>
        <l id="s4:l4" met="4" type="-+">in hanteringh wij zijn <rhyme label="b" type="m" corresp="#s4:l3">behoet</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Toch thert ghij stuert ende <rhyme label="a" type="m">regeert</rhyme></l>
        <l id="s5:l2" met="4" type="-+">tlichaem in treu en reijn <rhyme label="a" type="m" corresp="#s5:l1">geert</rhyme></l>
        <l id="s5:l3" met="4" type="-+">doer hette ons geloue <rhyme label="b" type="m">brant</rhyme></l>
        <l id="s5:l4" met="4" type="-+">maeckt tliste venijn sij <rhyme label="b" type="m" corresp="#s5:l3">onbekant</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dat Christus blijue onsen <rhyme label="a" type="m">spijs</rhyme></l>
        <l id="s6:l2" met="4" type="-+">onsen dranck het geloue <rhyme label="a" type="m" corresp="#s6:l1">grijs</rhyme></l>
        <l id="s6:l3" met="4" type="-+">laet ons drincken in <rhyme label="b" type="m">soberheijt</rhyme></l>
        <l id="s6:l4" met="4" type="-+">dronckenschap van geest <rhyme label="b" type="m" corresp="#s6:l3">bereijt</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Laet desen dach passeren <rhyme label="a" type="m">blij</rhyme></l>
        <l id="s7:l2" met="4" type="-+">den morgenstont die scaempte <rhyme label="a" type="m" corresp="#s7:l1">sij</rhyme></l>
        <l id="s7:l3" met="4" type="-+">den middach dat geloeft <rhyme label="b" type="m">present</rhyme></l>
        <l id="s7:l4" met="4" type="-+">den auont sij thert <rhyme label="b" type="m" corresp="#s7:l3">onbekent</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Den morgenstont den loop <rhyme label="a" type="m">bereijt</rhyme></l>
        <l id="s8:l2" met="4" type="-+">laet haer geheel sijn <rhyme label="a" type="m" corresp="#s8:l1">vuijtgespreijt</rhyme></l>
        <l id="s8:l3" met="4" type="-+">geheel den vader inden <rhyme label="b" type="m">soen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">het weert geheel in vader <rhyme label="b" type="m" corresp="#s8:l3">coen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">*Den vader si euich <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Als mede soen sonder <rhyme label="a" type="m" corresp="#s9:l1">respijt</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Met den geest vertroosten <rhyme label="b" type="m">heer</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Regnerende door alle <rhyme label="b" type="m" corresp="#s9:l3">tijt</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
