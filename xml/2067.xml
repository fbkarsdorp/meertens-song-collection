  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WY hebben in de <rhyme label="a" type="f">Steden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Nu lang genoeg <rhyme label="b" type="m">gewoont</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Laet ons wat buyten <rhyme label="a" type="f" corresp="#s1:l1">treden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Nu 't weêr soo Hemels <rhyme label="b" type="m" corresp="#s1:l2">thoont</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Al pryst men seer de <rhyme label="c" type="f">Steden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Nochtans van <rhyme label="d" type="m">d'eenigheydt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Wordt meerder lof <rhyme label="d" type="m" corresp="#s1:l6">gheseydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Al zyn de stercke <rhyme label="a" type="f">Steden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met Vesten wel <rhyme label="b" type="m">bevrydt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Nochtans de <rhyme label="a" type="f" corresp="#s2:l1">vlackigheden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van d'open <rhyme label="b" type="m" corresp="#s2:l2">eenigheydt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die gheven aen een <rhyme label="c" type="f">Ziele</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Meer sekerheydt en <rhyme label="d" type="m">rust</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Meer blydtschap en <rhyme label="d" type="m" corresp="#s2:l6">wellust</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wil ick u een <rhyme label="a" type="f">parabel</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hier van vertellen <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wil ick u met een <rhyme label="a" type="f" corresp="#s3:l1">fabel</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Deês waerheydt doen <rhyme label="b" type="m" corresp="#s3:l2">verstaen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Een fabel die versiert <rhyme label="c" type="f">is</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Tot kortingh van den <rhyme label="d" type="m">wegh</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hoort toe dan wat ick <rhyme label="d" type="m" corresp="#s3:l6">segh</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Een Dolleken oft <rhyme label="a" type="f">Velt-muysken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat Kruyt en Pieren <rhyme label="b" type="m">at</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ontfongh eens in syn <rhyme label="a" type="f" corresp="#s4:l1">Huysken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Een Muysken van de <rhyme label="b" type="m" corresp="#s4:l2">Stadt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dit geckte met 't <rhyme label="c" type="f">Velt-muysken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Om dat gheen Speck en <rhyme label="d" type="m">hadt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ghelyck de Muys van <rhyme label="d" type="m" corresp="#s4:l6">Stadt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">'t Veldt-muysken quam <rhyme label="a" type="f">ghetreden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met 't Muysken van de <rhyme label="b" type="m">Stadt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Naer d'Huysen van de <rhyme label="a" type="f" corresp="#s5:l1">Steden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Daer-men van 't Vercken <rhyme label="b" type="m" corresp="#s5:l2">at</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Maer soo sy samen <rhyme label="c" type="f">aten</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Quam daer een loose <rhyme label="d" type="m">Kat</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Die hun voor Speck op <rhyme label="d" type="m" corresp="#s5:l6">at</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die Steden <rhyme label="a" type="f">gouverneren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Door hunne <rhyme label="b" type="m">heerschappy</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die gaen hun <rhyme label="a" type="f" corresp="#s6:l1">recreëren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Die zyn hier buyten <rhyme label="b" type="m" corresp="#s6:l2">bly</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">De ryckste van de <rhyme label="c" type="f">Steden</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Die hebben <rhyme label="d" type="m">meesten-deel</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Een Speel-hof oft <rhyme label="d" type="m" corresp="#s6:l6">Kasteel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">In Hoy en Stroye <rhyme label="a" type="f">Huyskens</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die buyten staen <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Versetten sy hun <rhyme label="a" type="f" corresp="#s7:l1">kruyskens</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Meer als in <rhyme label="b" type="m" corresp="#s7:l2">Marber-steen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">s'Ontspannen hier den Boôg <rhyme label="c" type="f">eens</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Sy scheppen níeuwen <rhyme label="d" type="m">moet</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Verquicken Hert en <rhyme label="d" type="m" corresp="#s7:l6">Bloet</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ick hebb' in ghen' <rhyme label="a" type="f">Bosschagi'</rhyme></l>
        <l id="s8:l2" met="3" type="-+">In d'Heyligh' <rhyme label="b" type="m">eenigheydt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Een kleyn <rhyme label="a" type="f" corresp="#s8:l1">Eremitagi'</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Voor mynen gheest <rhyme label="b" type="m" corresp="#s8:l2">bereydt</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Ghelyck een Tortel-duyf <rhyme label="c" type="f">ken</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Sit ick daer in <rhyme label="d" type="m">alleen</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Myn sonden en <rhyme label="d" type="m" corresp="#s8:l6">beween</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Als Jesus dan in <rhyme label="a" type="f">stilten</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Spreckt tot myn hert <rhyme label="b" type="m">al-hier</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Doet hy myn ziele <rhyme label="a" type="f" corresp="#s9:l1">smilten</rhyme></l>
        <l id="s9:l4" met="3" type="-+">In syn soet <rhyme label="b" type="m" corresp="#s9:l2">minne-vier</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Daer spreeck ick mynen <rhyme label="c" type="f">Bruygom</rhyme></l>
        <l id="s9:l6" met="3" type="-+">En mynen Bruygom <rhyme label="d" type="m">my</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Wy zyn daer vry en <rhyme label="d" type="m" corresp="#s9:l6">bly</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
