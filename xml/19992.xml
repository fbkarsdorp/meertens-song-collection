  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SO lang is ’t Bruytje <rhyme label="a" type="m">Bruyt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Tot men de Bruyloft <rhyme label="a" type="m" corresp="#s1:l1">sluyt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dan wer ’t byslapen <rhyme label="b" type="m">vreught</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En dan ist Man en <rhyme label="c" type="m">Vrou</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Gescheyden van de <rhyme label="b" type="m" corresp="#s1:l3">Ieught</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">O! kracht van echte <rhyme label="c" type="m" corresp="#s1:l4">Trou</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">So lang is ’t Meysje <rhyme label="a" type="m">maegt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Tot d’ Maegdom is <rhyme label="a" type="m" corresp="#s2:l1">gewaegt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En ’t Roosje <rhyme label="b" type="m">af-gepluckt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van d’liefs ontfanckb’re <rhyme label="c" type="m">steel</rhyme></l>
        <l id="s2:l5" met="3" type="-+">En den Minnaer <rhyme label="b" type="m" corresp="#s2:l3">geluckt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Soo ’t alderwaerste <rhyme label="c" type="m" corresp="#s2:l4">deel</rhyme>.</l>
      </lg>
    </lg>
