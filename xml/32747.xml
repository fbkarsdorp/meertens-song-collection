  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OCh mijnen wel <rhyme label="a" type="f">beminden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Iesus mijn hoochste <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wanneer sal ick u eens <rhyme label="a" type="f" corresp="#s1:l1">vinden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Te recht in mijn <rhyme label="b" type="m" corresp="#s1:l2">ghemoet</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Wanneer sal't sijn 么 liefste <rhyme label="c" type="m">mijn</rhyme>!</l>
        <l id="s1:l6" met="4" type="-+">Dat ick sal sien u soet <rhyme label="c" type="m" corresp="#s1:l5">aenschijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ech wanneer sal ick <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Mijn lief met u <rhyme label="b" type="m">vereent</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Eens losts van al dees <rhyme label="a" type="f" corresp="#s2:l1">vreesen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Daer 't hert gheduerich <rhyme label="b" type="m" corresp="#s2:l2">weent</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Och, och wanneer, sal ick 么 <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Eens tot u nemen mijnen <rhyme label="c" type="m" corresp="#s2:l5">keer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe kan mijn siel hier <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">么 Leven sonder <rhyme label="b" type="m">u</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Want wie kan my troost <rhyme label="a" type="f" corresp="#s3:l1">gheven</rhyme>?</l>
        <l id="s3:l4" met="3" type="-+">Niemands dan ghy <rhyme label="b" type="m" corresp="#s3:l2">Iesu</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Dus ick u min, met all' mijn <rhyme label="c" type="m">sinn'</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Neemt lief mijn hert, en rust daer <rhyme label="c" type="m" corresp="#s3:l5">in</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Och waeren al mijn <rhyme label="a" type="f">krachten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Eens vast aen u <rhyme label="b" type="m">ghecleeft</rhyme></l>
        <l id="s4:l3" met="3" type="-+">En dat alle mijn <rhyme label="a" type="f" corresp="#s4:l1">ghedachten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Niet sochten wat hier <rhyme label="b" type="m" corresp="#s4:l2">leeft</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Maer dit en sal in tranen <rhyme label="c" type="m">dal</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Te recht noyt wesen 么 Godt mijn <rhyme label="c" type="m" corresp="#s4:l5">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mocht ick u toch eens <rhyme label="a" type="f">ghenieten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Iesu naer mijnen <rhyme label="b" type="m">lust</rhyme></l>
        <l id="s5:l3" met="3" type="-+">My en soud' dan niet <rhyme label="a" type="f" corresp="#s5:l1">verdrieten</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ter werelt gheen <rhyme label="b" type="m" corresp="#s5:l2">onrust</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Comt reyckt die hant, maeckt los den <rhyme label="c" type="m">bandt</rhyme></l>
        <l id="s5:l6" met="4" type="-+">En trecht mijn Ziel in't <rhyme label="c" type="m" corresp="#s5:l5">Vader-landt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer soeten Prins en <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Doet met my uwen <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">In't lijden wilt my <rhyme label="a" type="f" corresp="#s6:l1">leeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Altijdt te swijghen <rhyme label="b" type="m" corresp="#s6:l2">stil</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Neempt my gheheel, ghy sijt mijn <rhyme label="c" type="m">deel</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Want ick my gantsch aen u <rhyme label="c" type="m" corresp="#s6:l5">beveel</rhyme>.</l>
      </lg>
    </lg>
  </text>
