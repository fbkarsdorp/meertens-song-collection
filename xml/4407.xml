    <melody>Te Brunswijk staat een stenen huis</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VVie hier God vreest die sal <rhyme label="a" type="m">bestaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">sijn wegen wel mz groote <rhyme label="b" type="f">eeren</rhyme>, }</l>
        <l id="s1:l3" met="4" type="-+">maer wie Gods wet wilt van hem <rhyme label="a" type="m" corresp="#s1:l1">slaen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">die sal hier tot d scaden <rhyme label="b" type="f" corresp="#s1:l2">keeren</rhyme>, }</l>
        <l id="s1:l5" met="4" type="+-">den genen diemen hier siet <rhyme label="b" type="f" corresp="#s1:l2">leeren</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">vrees van Godt, En sijn <rhyme label="c" type="m">gebot</rhyme>//</l>
        <l id="s1:l7" met="4" type="+-">Sullen t'sregenten eer <rhyme label="b" type="f" corresp="#s1:l2">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Rijck ende aerm, groot ende <rhyme label="a" type="m">cleyn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Sullen heur niet anders <rhyme label="b" type="f">beroemen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dan dat sy eeren alle <rhyme label="a" type="m" corresp="#s2:l1">ghemeyn</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Den schepper vander schoonder <rhyme label="b" type="f" corresp="#s2:l2">bloemen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Niemandt en sal versmaet <rhyme label="b" type="f" corresp="#s2:l2">verdoemen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Aerme wijs// ende met <rhyme label="c" type="m">prijs</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Godtloose rijcke eerlijck <rhyme label="b" type="f" corresp="#s2:l2">noemen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vorst ende heer regenten <rhyme label="a" type="m">veel</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Houdtmen in eer en grooter <rhyme label="b" type="f">weerden</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Maer wie sy sijn tis noch wyt <rhyme label="a" type="m" corresp="#s3:l1">scheel</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">By den godtvreesenden op <rhyme label="b" type="f" corresp="#s3:l2">eerden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Een wijs knecht sal Gods dienst <rhyme label="b" type="f" corresp="#s3:l2">aenueerden</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En een heer// vernuft in <rhyme label="c" type="m">leer</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Gnor niet om sulcken goet <rhyme label="b" type="f" corresp="#s3:l2">volheerden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En volght niet uwen eyghen <rhyme label="a" type="m">cop</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">In v ampt wilt v niet stout <rhyme label="b" type="f">maken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Neemt uws doens waer en houdt niet <rhyme label="a" type="m" corresp="#s4:l1">op</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Want beter sijn doch dese <rhyme label="b" type="f" corresp="#s4:l2">saken</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Dan veel vermeten metter <rhyme label="b" type="f" corresp="#s4:l2">spraken</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En dat winst// sij van de <rhyme label="c" type="m">minst</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Maer namaels aen het bidden <rhyme label="b" type="f" corresp="#s4:l2">raken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Mijn kindt in ongheluck hebt <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Op v ambacht wilt v <rhyme label="b" type="f">verlaten</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Want wie sijn ambacht niet en <rhyme label="a" type="m" corresp="#s5:l1">doet</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Crijght weynich nuts tot sijrder <rhyme label="b" type="f" corresp="#s5:l2">baten</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Gheen eer en heeft hy byder <rhyme label="b" type="f" corresp="#s5:l2">straten</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Die met clacht t'selfde <rhyme label="c" type="m">veracht</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Oneert dat hier seer bouen <rhyme label="b" type="f" corresp="#s5:l2">maten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">D'aerme men eert als sy sijn <rhyme label="a" type="m">cloeck</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die rijck is om t'goet in veel <rhyme label="b" type="f">wijcken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Doet cloecheyt, heur eerlijck <rhyme label="a" type="m" corresp="#s6:l1">versoeck</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Hoe veel te meer dan inden <rhyme label="b" type="f" corresp="#s6:l2">rijcken</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Wat hun niet wel staende sal <rhyme label="b" type="f" corresp="#s6:l2">blijcken</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Voecht noch min// siet het wel <rhyme label="c" type="m">in</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Den aermen met cloecke <rhyme label="b" type="f" corresp="#s6:l2">practijcken</rhyme>.</l>
      </lg>
    </lg>
  </text>
