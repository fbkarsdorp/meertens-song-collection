  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Getrouwe <rhyme label="a" type="f">Batavieren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wel aan omvlegt uw helden <rhyme label="b" type="m">hoofd</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Met groene <rhyme label="a" type="f" corresp="#s1:l1">Lauwerieren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wiens glans de nyd nooyt <rhyme label="b" type="m" corresp="#s1:l2">doofd</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Het voegd u   steeds te <rhyme label="c" type="f">klinken</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Tot eer van haar <rhyme label="d" type="m">beleyd</rhyme></l>
        <l id="s1:l7" met="3" type="-+">En tot haar roem te <rhyme label="c" type="f" corresp="#s1:l5">drinken</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Op dat haar moed mag <rhyme label="c" type="f" corresp="#s1:l5">blinken</rhyme>;</l>
        <l id="s1:l9" met="3" type="-+">Het voegd u steeds te <rhyme label="c" type="f" corresp="#s1:l5">klinken</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Ten spyt van wie 't <rhyme label="d" type="m" corresp="#s1:l6">benyd</rhyme>.</l>
        <l id="s1:l11" met="2" type="+-">Want haar <rhyme label="e" type="m">lof</rhyme></l>
        <l id="s1:l12" met="2" type="+-">Geeft u <rhyme label="e" type="m" corresp="#s1:l11">stof</rhyme></l>
        <l id="s1:l13" met="2" type="+-">Meer en <rhyme label="f" type="m">meer</rhyme></l>
        <l id="s1:l14" met="2" type="+-">Hare <rhyme label="f" type="m" corresp="#s1:l13">eer</rhyme></l>
        <l id="s1:l15" met="3" type="+-">En dapperheyd te <rhyme label="g" type="f">roemen</rhyme></l>
        <l id="s1:l16" met="4" type="+-">Die 's vyands moed en woeden <rhyme label="h" type="m">stuyt</rhyme>,</l>
        <l id="s1:l17" met="3" type="+-">Slegts door haar naams <rhyme label="h" type="m" corresp="#s1:l16">geluyd</rhyme>!</l>
        <l id="s1:l18" met="4" type="+-">Drink dan verheugd dees volle <rhyme label="h" type="m" corresp="#s1:l16">fluyt</rhyme></l>
        <l id="s1:l19" met="3" type="+-">Op haar welstand <rhyme label="h" type="m" corresp="#s1:l16">uyt</rhyme>.</l>
      </lg>
