    <tags/>
    <melody>Gelijk een roosje teer</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt is des menschen <rhyme label="a" type="m">loop</rhyme></l>
        <l id="s1:l2" met="3" type="-+">daer Heraclijt om <rhyme label="b" type="m">schreyt</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Niet dan een yd'le <rhyme label="a" type="m" corresp="#s1:l1">hoop</rhyme></l>
        <l id="s1:l4" met="3" type="-+">van dwase <rhyme label="b" type="m" corresp="#s1:l2">sottigheydt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Ick lagh hier stadigh <rhyme label="c" type="f">om</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">ha ha ha 't zijn onghestelde <rhyme label="d" type="f">Snaren</rhyme>,</l>
        <l id="s1:l7" met="6" type="-+">ha ha ha ha ha ha ha ha ha ha ha <rhyme label="c" type="f" corresp="#s1:l5">ha</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">en kan my naeuw <rhyme label="d" type="f" corresp="#s1:l6">bedaren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Siet eens de grootste <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En d'allerminste <rhyme label="b" type="m">Slaef</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wat heeft den Rijckaert <rhyme label="a" type="m" corresp="#s2:l1">meer</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Als ongeruste <rhyme label="b" type="m" corresp="#s2:l2">haef</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Daer d'ander vrolijck leeft ha ha <rhyme label="c" type="f">ha</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wie sou zijn lacchen <rhyme label="d" type="f">sparen</rhyme></l>
        <l id="s2:l7" met="6" type="-+">ha ha ha ha ha ha ha ha ha ha ha <rhyme label="c" type="f" corresp="#s2:l5">ha</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ick kan mijn nau <rhyme label="d" type="f" corresp="#s2:l6">bedaren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De trotse hooghe <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Bemint de aerdtsche <rhyme label="b" type="m">Schat</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Och arme lompe <rhyme label="a" type="m" corresp="#s3:l1">bloet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Jy dwaelt van 't rechte <rhyme label="b" type="m" corresp="#s3:l2">pat</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Helaes wanneer de doodt, ha ha <rhyme label="c" type="f">ha</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Komt u gemoedt <rhyme label="d" type="f">bezwaren</rhyme>,</l>
        <l id="s3:l7" met="6" type="-+">ha ha ha ha ha ha ha ha ha ha ha <rhyme label="c" type="f" corresp="#s3:l5">ha</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Verstoven zijn de <rhyme label="d" type="f" corresp="#s3:l6">Jaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Leert noch ter wijl de <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">U noodight met het <rhyme label="b" type="m">oogh</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Door eene graghe <rhyme label="a" type="m" corresp="#s4:l1">vlijt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Te klimmen naer om <rhyme label="b" type="m" corresp="#s4:l2">hoogh</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En lacht de Werelt uyt ha ha <rhyme label="c" type="f">ha</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Met haer verwarde <rhyme label="d" type="f">baren</rhyme>,</l>
        <l id="s4:l7" met="6" type="-+">ha ha ha ha ha ha ha ha ha ha ha <rhyme label="c" type="f" corresp="#s4:l5">ha</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">U Ziel zal beter <rhyme label="d" type="f" corresp="#s4:l6">varen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
