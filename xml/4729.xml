    <melody>Een zee vol sture baren</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GElijkmen met <rhyme label="a" type="f">syropen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De zieken <rhyme label="b" type="m">prepareert</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Eer datmen door doet <rhyme label="a" type="f" corresp="#s1:l1">lopen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Den drank die hen <rhyme label="b" type="m" corresp="#s1:l2">purgeert</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Zoo doet ook Gods <rhyme label="c" type="f">gena-de</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Schier met een kranken <rhyme label="d" type="m">geest</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Eer dat hy haer <rhyme label="c" type="f" corresp="#s1:l5">misdaden</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Ordentelijk <rhyme label="d" type="m" corresp="#s1:l6">geneest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want zoo hy zijn <rhyme label="a" type="f">werken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Almagtich is; zoo <rhyme label="b" type="m">doedt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Hy in zijn handel <rhyme label="a" type="f" corresp="#s2:l1">merken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Een midd’ling zacht en <rhyme label="b" type="m" corresp="#s2:l2">zoet</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Bereydende voor <rhyme label="c" type="f">henen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">De ziel, eer dat het <rhyme label="d" type="m">hart</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Ondonkert, en <rhyme label="c" type="f" corresp="#s2:l5">beschenen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Noch van zijn gracy <rhyme label="d" type="m" corresp="#s2:l6">werd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Voor eerst, doed hyze <rhyme label="a" type="f">vatten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Door een verwekt <rhyme label="b" type="m">geloof</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De twederhande <rhyme label="a" type="f" corresp="#s3:l1">schatten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die hy te veld, te <rhyme label="b" type="m" corresp="#s3:l2">Hoof</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Altijd heeft even <rhyme label="c" type="f">vaerdig</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Als een verslinnent <rhyme label="d" type="m">vier</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Door d’een, is hy <rhyme label="c" type="f" corresp="#s3:l5">rechtveerdig</rhyme>:</l>
        <l id="s3:l8" met="3" type="-+">Door d’ander <rhyme label="d" type="m" corresp="#s3:l6">goedertier</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De eerste, doed ons <rhyme label="a" type="f">vrezen</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">De twede baerdt ons <rhyme label="b" type="m">hoop</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Maer onlangs nae de <rhyme label="a" type="f" corresp="#s4:l1">dezen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Komt, met een snelle <rhyme label="b" type="m" corresp="#s4:l2">loop</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Een tocht van <rhyme label="c" type="f">caritaten</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die Goods beleefde <rhyme label="d" type="m">zucht</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Doed minnen, en doed <rhyme label="c" type="f" corresp="#s4:l5">haten</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Het schennis vande <rhyme label="d" type="m" corresp="#s4:l6">tucht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Voor ’t lest, gaet hier <rhyme label="a" type="f">beneven</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Een vast besloten <rhyme label="b" type="m">raed</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Van een verbeterdt <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Waer op, dat metter <rhyme label="b" type="m" corresp="#s5:l2">daed</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Volgt d’ingestorten <rhyme label="c" type="f">zegen</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Die ons met God <rhyme label="d" type="m">verzoendt</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">End’ al wat onze <rhyme label="c" type="f" corresp="#s5:l5">wegen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Bekladde, wascht en <rhyme label="d" type="m" corresp="#s5:l6">boendt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dit tuygen de <rhyme label="a" type="f">Schriftuiren</rhyme>:</l>
        <l id="s6:l2" met="3" type="-+">Dit brengt de rede <rhyme label="b" type="m">mee</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Want ’t huys, daer God zal <rhyme label="a" type="f" corresp="#s6:l1">kuiren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Als in zijn eigen <rhyme label="b" type="m" corresp="#s6:l2">stee</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Voorzeker dient ter <rhyme label="c" type="f">eeren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Voor heenen wel <rhyme label="d" type="m">bereyd</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Om waerdig te <rhyme label="c" type="f" corresp="#s6:l5">logeren</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Zoo waerden <rhyme label="d" type="m" corresp="#s6:l6">Majesteyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">’t Geloof, nae datze <rhyme label="a" type="f">zeggen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Komt toe in dit <rhyme label="b" type="m">gebou</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Het fundament te <rhyme label="a" type="f" corresp="#s7:l1">leggen</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">daer op, ter goeder <rhyme label="b" type="m" corresp="#s7:l2">trou</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">De hoop het werk doedt <rhyme label="c" type="f">rijzen</rhyme>;</l>
        <l id="s7:l6" met="3" type="-+">Om eyndtelijk <rhyme label="d" type="m">volmaekt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Te werden vande <rhyme label="c" type="f" corresp="#s7:l5">prijzen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Daernae de liefden <rhyme label="d" type="m" corresp="#s7:l6">haekt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
