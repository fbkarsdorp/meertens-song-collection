  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">Daerom doet al 't geen men u <rhyme label="a" type="m">gebiet</rhyme>,</l>
        <l id="s1:l2" met="6" type="+-">Maer na hare werken wilt u voegen <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme>;</l>
        <l id="s1:l3" met="5" type="+-">Want sy niet en doen, maer seggen <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s1:l4" met="5" type="+-">Veel lasten geeven sy d'ander met <rhyme label="b" type="m" corresp="#s1:l3">bevel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Die sy niet eens willen raken <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s2:l2" met="6" type="+-">Om te sijn gesien, haer werken sy <rhyme label="a" type="m" corresp="#s2:l1">bestaen</rhyme>:</l>
        <l id="s2:l3" met="5" type="+-">Wets Memory-brieven maken s' <rhyme label="b" type="m">breedt</rhyme>,</l>
        <l id="s2:l4" met="5" type="+-">En ook de soomen of boorden aen haer <rhyme label="b" type="m" corresp="#s2:l3">kleedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">In Maeltijden sy graegh sitten <rhyme label="a" type="m">hoogh</rhyme>,</l>
        <l id="s3:l2" met="6" type="+-">En sy kiesen d'eerste stoel in <rhyme label="a" type="m" corresp="#s3:l1">Synagoogh</rhyme>:</l>
        <l id="s3:l3" met="5" type="+-">Op de Markt willen sy sijn <rhyme label="b" type="m">gegroet</rhyme>,</l>
        <l id="s3:l4" met="5" type="+-">En alle-man haer ook Meester heeten <rhyme label="b" type="m" corresp="#s3:l3">moet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Gy-lie u geen Meesters heeten <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s4:l2" met="6" type="+-">Want gy-lieden hebt dogh eenen Meester <rhyme label="a" type="m" corresp="#s4:l1">goet</rhyme>;</l>
        <l id="s4:l3" met="5" type="+-">Broeders sijt gy; geen VaÃªr noemt op <rhyme label="b" type="m">d'aert</rhyme>,</l>
        <l id="s4:l4" met="5" type="+-">Gy in den Heemel hebt eenen Vader <rhyme label="b" type="m" corresp="#s4:l3">waert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="+-">Wilt geen Meesters heeten: want <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s5:l2" met="6" type="+-">Christus uwe Meester is, en anders <rhyme label="a" type="m" corresp="#s5:l1">geen</rhyme>.</l>
        <l id="s5:l3" met="5" type="+-">Wie van u de meeste is <rhyme label="b" type="m">gesien</rhyme>,</l>
        <l id="s5:l4" met="5" type="+-">Die maken moet, dat hy d'ander t'samen <rhyme label="b" type="m" corresp="#s5:l3">dien'</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="+-">Wie sijn selfs verheft, sal sijn <rhyme label="a" type="m">verneert</rhyme>;</l>
        <l id="s6:l2" met="6" type="+-">Wie sijn selfs verneert, sal werden hoogh <rhyme label="a" type="m" corresp="#s6:l1">ge-eert</rhyme>.</l>
        <l id="s6:l3" met="5" type="+-">Van de Schrift-geleerden u wel <rhyme label="b" type="m">waght</rhyme>,</l>
        <l id="s6:l4" met="5" type="+-">In stoolen willen sy gaen als groot <rhyme label="b" type="m" corresp="#s6:l3">ge-aght</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="+-">Groetenis op Markten is haer <rhyme label="a" type="m">sin</rhyme>,</l>
        <l id="s7:l2" met="6" type="+-">En sy in de Synagoogen nemen <rhyme label="a" type="m" corresp="#s7:l1">in</rhyme></l>
        <l id="s7:l3" met="5" type="+-">d'Eerste stoelen, en in <rhyme label="b" type="m">gastery</rhyme>,</l>
        <l id="s7:l4" met="5" type="+-">Aen Tafel, d'eerste plaets willen hebben <rhyme label="b" type="m" corresp="#s7:l3">sy</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="+-">Langh te bidden veynsen sy-lie <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s8:l2" met="6" type="+-">Trecken so der Weduwen welvaren <rhyme label="a" type="m" corresp="#s8:l1">naer</rhyme>,</l>
        <l id="s8:l3" met="5" type="+-">En verslinden 't al in haren <rhyme label="b" type="m">dis</rhyme>,</l>
        <l id="s8:l4" met="5" type="+-">En daerom hebben sy meer <rhyme label="b" type="m" corresp="#s8:l3">verdoemenis</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="+-">Jesu, goede Meester, ons togh <rhyme label="a" type="m">leere</rhyme></l>
        <l id="s9:l2" met="6" type="+-">Ons ootmoedigh dragen, gelijk gy <rhyme label="a" type="m" corresp="#s9:l1">begeert</rhyme>,</l>
        <l id="s9:l3" met="5" type="+-">Ende vlieden all' <rhyme label="b" type="m">eergierigheyt</rhyme>,</l>
        <l id="s9:l4" met="5" type="+-">Dat wy in onsen staet volgen uw' <rhyme label="b" type="m" corresp="#s9:l3">beleyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
