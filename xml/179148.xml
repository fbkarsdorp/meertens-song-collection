    <melody>O zeg ons herderin waarom</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O zeg ons, <rhyme label="a" type="f">herderinne</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Waar-om ge uw harte <rhyme label="b" type="m">houdt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Gesloten voor de <rhyme label="a" type="f" corresp="#s1:l1">minne</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En als 'ne <rhyme label="a" type="f" corresp="#s1:l1">koninginne</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Zoo grillig zijt en <rhyme label="b" type="m" corresp="#s1:l2">koud</rhyme>?</l>
        <l id="s1:l6" met="3" type="-+">Zoo grillig zijt en <rhyme label="b" type="m" corresp="#s1:l2">koud</rhyme>?</l>
        <l id="s1:l7" met="3" type="-+">Al blinken <rhyme label="c" type="f">allerwegen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">U smeekende oogen <rhyme label="c" type="f" corresp="#s1:l7">tegen</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Naar uwer liefde <rhyme label="c" type="f" corresp="#s1:l7">zegen</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Wordt vruchteloos <rhyme label="d" type="m">getracht</rhyme></l>
        <l id="s1:l11" met="2" type="+-">En <rhyme label="d" type="m" corresp="#s1:l10">gesmacht</rhyme>...</l>
        <l id="s1:l12" met="2" type="+-">En <rhyme label="d" type="m" corresp="#s1:l10">gesmacht</rhyme>...</l>
        <l id="s1:l13" met="3" type="-+">O wees als schoon <rhyme label="e" type="f">geprezen</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">Doch tevens als teeder, <rhyme label="f" type="m">kind</rhyme>!</l>
        <l id="s1:l15" met="3" type="-+">Wat baat, bemind te <rhyme label="e" type="f" corresp="#s1:l13">wezen</rhyme>,</l>
        <l id="s1:l16" met="3" type="-+">Wanneer men niet <rhyme label="f" type="m" corresp="#s1:l14">weder-mint</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Gelijk een straal der <rhyme label="a" type="f">zonne</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Den beemd met loof <rhyme label="b" type="m">versiert</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zoo welt er eene <rhyme label="a" type="f" corresp="#s2:l1">bronne</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Der allergrootste <rhyme label="a" type="f" corresp="#s2:l1">wonne</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Waar men uw bijzijn <rhyme label="b" type="m" corresp="#s2:l2">viert</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Waar men uw bijzijn <rhyme label="b" type="m" corresp="#s2:l2">viert</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Bij 't vormen uwer <rhyme label="c" type="f">leden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Kon meer <rhyme label="c" type="f" corresp="#s2:l7">bevalligheden</rhyme></l>
        <l id="s2:l9" met="3" type="-+">De Schepper niet <rhyme label="c" type="f" corresp="#s2:l7">besteden</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Zoo fluistert <rhyme label="d" type="m">iedereen</rhyme></l>
        <l id="s2:l11" met="2" type="+-">Om u <rhyme label="d" type="m" corresp="#s2:l10">heen</rhyme>...</l>
        <l id="s2:l12" met="2" type="+-">Om u <rhyme label="d" type="m" corresp="#s2:l10">heen</rhyme>...</l>
        <l id="s2:l13" met="3" type="-+">O wees als schoon <rhyme label="e" type="f">geprezen</rhyme>,</l>
        <l id="s2:l14" met="3" type="-+">Doch tevens als teeder, <rhyme label="f" type="m">kind</rhyme>!</l>
        <l id="s2:l15" met="3" type="-+">Wat baat, bemind te <rhyme label="e" type="f" corresp="#s2:l13">wezen</rhyme>,</l>
        <l id="s2:l16" met="3" type="-+">Wanneer men niet <rhyme label="f" type="m" corresp="#s2:l14">weder-mint</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Als wij u niet <rhyme label="a" type="f">ontwaren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wanneer, ten dans <rhyme label="b" type="m">bereid</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De paren zich <rhyme label="a" type="f" corresp="#s3:l1">verg√¢ren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">O dan is <rhyme label="a" type="f" corresp="#s3:l1">heengevaren</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ons aller <rhyme label="b" type="m" corresp="#s3:l2">vroolijkheid</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Ons aller <rhyme label="b" type="m" corresp="#s3:l2">vroolijkheid</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Maar niemand is er <rhyme label="c" type="f">treurig</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En 't veld is eens zoo <rhyme label="c" type="f" corresp="#s3:l7">kleurig</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">De dreve is eens zoo <rhyme label="c" type="f" corresp="#s3:l7">geurig</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Als gij er <rhyme label="d" type="m">bloembekranst</rhyme></l>
        <l id="s3:l11" met="2" type="+-">Met ons <rhyme label="d" type="m" corresp="#s3:l10">danst</rhyme>...</l>
        <l id="s3:l12" met="2" type="+-">Met ons <rhyme label="d" type="m" corresp="#s3:l10">danst</rhyme>...</l>
        <l id="s3:l13" met="3" type="-+">O wees als schoon <rhyme label="e" type="f">geprezen</rhyme>,</l>
        <l id="s3:l14" met="3" type="-+">Doch tevens als teeder, <rhyme label="f" type="m">kind</rhyme>!</l>
        <l id="s3:l15" met="3" type="-+">Wat baat, bemind te <rhyme label="e" type="f" corresp="#s3:l13">wezen</rhyme>,</l>
        <l id="s3:l16" met="3" type="-+">Wanneer men niet <rhyme label="f" type="m" corresp="#s3:l14">weder-mint</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De duive is <rhyme label="a" type="f">heengetogen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die u zoo duurbaar <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Den duiver <rhyme label="a" type="f" corresp="#s4:l1">toegevlogen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In wiens wellustige <rhyme label="a" type="f" corresp="#s4:l1">oogen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Ze zoete minne <rhyme label="b" type="m" corresp="#s4:l2">las</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Ze zoete minne <rhyme label="b" type="m" corresp="#s4:l2">las</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Dat voorbeeld moge u <rhyme label="c" type="f">leeren</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">De liefde niet te <rhyme label="c" type="f" corresp="#s4:l7">weren</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Want haar genot <rhyme label="c" type="f" corresp="#s4:l7">ontberen</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Is meer dan <rhyme label="d" type="m">hellesmart</rhyme></l>
        <l id="s4:l11" met="2" type="+-">Voor het <rhyme label="d" type="m" corresp="#s4:l10">hart</rhyme>...</l>
        <l id="s4:l12" met="2" type="+-">Voor het <rhyme label="d" type="m" corresp="#s4:l10">hart</rhyme>...</l>
        <l id="s4:l13" met="3" type="-+">O wees als schoon <rhyme label="e" type="f">geprezen</rhyme>,</l>
        <l id="s4:l14" met="3" type="-+">Doch tevens als teeder, <rhyme label="f" type="m">kind</rhyme>!</l>
        <l id="s4:l15" met="3" type="-+">Wat baat, bemind te <rhyme label="e" type="f" corresp="#s4:l13">wezen</rhyme>,</l>
        <l id="s4:l16" met="3" type="-+">Wanneer men niet <rhyme label="f" type="m" corresp="#s4:l14">wedermint</rhyme>?</l>
      </lg>
    </lg>
  </text>
