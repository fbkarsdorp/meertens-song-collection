  <author>Marijn de Brauwer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">STerct mijn ghemoet en <rhyme label="a" type="f">zinnen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">O Godt <rhyme label="b" type="m">gebenendijt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">op dat ick magh <rhyme label="a" type="f" corresp="#s1:l1">verwinnen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Want ic voele veel <rhyme label="b" type="m" corresp="#s1:l2">strijdt</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Dat ic niet gedeuren en <rhyme label="c" type="m">magh</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Meest van <rhyme label="a" type="f" corresp="#s1:l1">binnen</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Gheeft my goet <rhyme label="c" type="m" corresp="#s1:l5">verdragh</rhyme>,</l>
        <l id="s1:l8" met="2" type="+-">Naght en <rhyme label="c" type="m" corresp="#s1:l5">dagh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Droevigh magh ick wel <rhyme label="a" type="f">klaghen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">My genadigh <rhyme label="b" type="m">aensiet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Moght ick u sleghts <rhyme label="a" type="f" corresp="#s2:l1">behagen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Light ware mijn <rhyme label="b" type="m" corresp="#s2:l2">verdriet</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Soo soud' ick met <rhyme label="c" type="m">verduldigheydt</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Mijn Kruyce <rhyme label="a" type="f" corresp="#s2:l1">dragen</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Dat ghy met <rhyme label="c" type="m" corresp="#s2:l5">bescheyt</rhyme></l>
        <l id="s2:l8" met="2" type="+-">My op <rhyme label="c" type="m" corresp="#s2:l5">leydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Om 't Kruys dragen te <rhyme label="a" type="f">degen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Behoeff ick hulp van <rhyme label="b" type="m">dy</rhyme></l>
        <l id="s3:l3" met="3" type="-+">'t Soude my haest <rhyme label="a" type="f" corresp="#s3:l1">verwegen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Stont ghy my Heer niet <rhyme label="b" type="m" corresp="#s3:l2">by</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Want van my selven ben ick <rhyme label="c" type="m">saen</rhyme></l>
        <l id="s3:l6" met="2" type="+-">Seer <rhyme label="a" type="f" corresp="#s3:l1">verlegen</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Wilt my doch <rhyme label="c" type="m" corresp="#s3:l5">bystaen</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Op dees <rhyme label="c" type="m" corresp="#s3:l5">baen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Op die bane <rhyme label="a" type="f">treden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Naer 't <rhyme label="b" type="m">Evangeliom</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dats op den wegh des <rhyme label="a" type="f" corresp="#s4:l1">vreden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Daer Godts Heyligen <rhyme label="b" type="m" corresp="#s4:l2">vrom</rhyme>/</l>
        <l id="s4:l5" met="4" type="+-">Met malkanderen wandelen <rhyme label="c" type="m">tzaem</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Gelijck als <rhyme label="a" type="f" corresp="#s4:l1">leden</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Van Christus <rhyme label="c" type="m" corresp="#s4:l5">Lichaem</rhyme>,</l>
        <l id="s4:l8" met="2" type="+-">Seer <rhyme label="c" type="m" corresp="#s4:l5">bequaem</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Tot die naer vrede <rhyme label="a" type="f">haken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Spreect den Heere <rhyme label="b" type="m">terstonts</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat hy wil komen <rhyme label="a" type="f" corresp="#s5:l1">maken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Een woninge by <rhyme label="b" type="m" corresp="#s5:l2">ons</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">maer eerst moet men des vleesch <rhyme label="c" type="m">wellust</rhyme></l>
        <l id="s5:l6" met="2" type="+-">Geheel <rhyme label="a" type="f" corresp="#s5:l1">versaken</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Dat den Heer <rhyme label="c" type="m" corresp="#s5:l5">gesust</rhyme>,</l>
        <l id="s5:l8" met="2" type="+-">By ons <rhyme label="c" type="m" corresp="#s5:l5">rust</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Siet ick sta voor die <rhyme label="a" type="f">Deure</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Doet die Heere <rhyme label="b" type="m">vermaen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wie op doet wel ter <rhyme label="a" type="f" corresp="#s6:l1">keure</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Tot dien sal ick in <rhyme label="b" type="m" corresp="#s6:l2">gaen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">mijn Avondtmael houden met <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s6:l6" met="2" type="+-">Wt liefden <rhyme label="a" type="f" corresp="#s6:l1">peure</rhyme>:</l>
        <l id="s6:l7" met="3" type="+-">Weet hy deur mijn <rhyme label="c" type="m" corresp="#s6:l5">stem</rhyme></l>
        <l id="s6:l8" met="2" type="+-">Wie ick <rhyme label="c" type="m" corresp="#s6:l5">ben</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer die haer Herten <rhyme label="a" type="f">sluyten</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Tot haer groot <rhyme label="b" type="m">ongewin</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Daer blijft den Heer <rhyme label="a" type="f" corresp="#s7:l1">buyten</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Hy en komt daer niet <rhyme label="b" type="m" corresp="#s7:l2">in</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Want een ander <rhyme label="c" type="m">ongesient</rhyme>,</l>
        <l id="s7:l6" met="2" type="+-">Is daer in <rhyme label="a" type="f" corresp="#s7:l1">muyten</rhyme></l>
        <l id="s7:l7" met="3" type="+-">Die men als goet <rhyme label="c" type="m" corresp="#s7:l5">vrient</rhyme>,</l>
        <l id="s7:l8" met="2" type="+-">Liever <rhyme label="c" type="m" corresp="#s7:l5">dient</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Men kan doch geen twee <rhyme label="a" type="f">heeren</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Dienen int aertsche <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat is naer Paulus <rhyme label="a" type="f" corresp="#s8:l1">leeren</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Christus en <rhyme label="b" type="m" corresp="#s8:l2">Belial</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Men moet aen d' een of d' ander <rhyme label="c" type="m">sie</rhyme></l>
        <l id="s8:l6" met="2" type="+-">Hem daer tot <rhyme label="a" type="f" corresp="#s8:l1">keeren</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">Want dese twee <rhyme label="c" type="m" corresp="#s8:l5">die</rhyme></l>
        <l id="s8:l8" met="2" type="+-">Sijn <rhyme label="c" type="m" corresp="#s8:l5">partie</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dees twee Heeren <rhyme label="a" type="f">voorschreven</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hebben verscheyden <rhyme label="b" type="m">Rijck</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Christum dat eeuwich <rhyme label="a" type="f" corresp="#s9:l1">leven</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Satan een <rhyme label="b" type="m" corresp="#s9:l2">ooghenblijck</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Wie dat hem int smal of int <rhyme label="c" type="m">bree</rhyme></l>
        <l id="s9:l6" met="2" type="+-">Wil gaen <rhyme label="a" type="f" corresp="#s9:l1">begeven</rhyme>,</l>
        <l id="s9:l7" met="3" type="+-">Die krijght een van <rhyme label="c" type="m" corresp="#s9:l5">twee</rhyme>:</l>
        <l id="s9:l8" met="2" type="+-">Vreucht oft <rhyme label="c" type="m" corresp="#s9:l5">wee</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">In Christus Rijcke <rhyme label="a" type="f">ydoone</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Is eeuwige blijtschap <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Satans Rijcke ten <rhyme label="a" type="f" corresp="#s10:l1">loone</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Is die eeuwige <rhyme label="b" type="m" corresp="#s10:l2">doot</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Al staet die weerelt nu <rhyme label="c" type="m">present</rhyme></l>
        <l id="s10:l6" met="2" type="+-">Lustich en <rhyme label="a" type="f" corresp="#s10:l1">schoone</rhyme>,</l>
        <l id="s10:l7" met="3" type="+-">Ziet in haren <rhyme label="c" type="m" corresp="#s10:l5">ent</rhyme></l>
        <l id="s10:l8" met="2" type="+-">Leyt <rhyme label="c" type="m" corresp="#s10:l5">torment</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Dat is al 's Weerelts <rhyme label="a" type="f">poogen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Soo Joannes <rhyme label="b" type="m">vertelt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Hooghmoet en lust der <rhyme label="a" type="f" corresp="#s11:l1">ooghe</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">En in boosheyt <rhyme label="b" type="m" corresp="#s11:l2">ghestelt</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">En in wellust over <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s11:l6" met="2" type="+-">Want den <rhyme label="a" type="f" corresp="#s11:l1">hoogen</rhyme>-</l>
        <l id="s11:l7" met="3" type="+-">moet, doch komen <rhyme label="c" type="m" corresp="#s11:l5">sal</rhyme>,</l>
        <l id="s11:l8" met="2" type="+-">Voor den <rhyme label="c" type="m" corresp="#s11:l5">val</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Den inganc tot <rhyme label="a" type="f">verblyden</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Die is vol <rhyme label="b" type="m">ongemack</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Beset met druck en <rhyme label="a" type="f" corresp="#s12:l1">lyden</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Gelyc dat Christus <rhyme label="b" type="m" corresp="#s12:l2">sprack</rhyme></l>
        <l id="s12:l5" met="4" type="+-">En oock seyt Esdras <rhyme label="c" type="m">goedertier</rhyme>,</l>
        <l id="s12:l6" met="2" type="+-">Aen beyde <rhyme label="a" type="f" corresp="#s12:l1">zyden</rhyme></l>
        <l id="s12:l7" met="3" type="+-">Is water en <rhyme label="c" type="m" corresp="#s12:l5">vier</rhyme>,</l>
        <l id="s12:l8" met="2" type="+-">Tot <rhyme label="c" type="m" corresp="#s12:l5">dongier</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Hoe zoudemen niet <rhyme label="a" type="f">verschromen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Als men dit ziet en <rhyme label="b" type="m">weet</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Deur zulcken wegh te <rhyme label="a" type="f" corresp="#s13:l1">komen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Oock maer een trede <rhyme label="b" type="m" corresp="#s13:l2">breet</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">O Heere wilt my helpen <rhyme label="c" type="m">dat</rhyme></l>
        <l id="s13:l6" met="2" type="+-">Ick <rhyme label="a" type="f" corresp="#s13:l1">genomen</rhyme></l>
        <l id="s13:l7" met="3" type="+-">worde, uyt desen <rhyme label="c" type="m" corresp="#s13:l5">padt</rhyme>,</l>
        <l id="s13:l8" met="2" type="+-">Inde <rhyme label="c" type="m" corresp="#s13:l5">Stadt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Die welcke Abraham <rhyme label="a" type="f">sochte</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Isaac en Jacob <rhyme label="b" type="m">vont</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Een Stadt alsoo haer <rhyme label="a" type="f" corresp="#s14:l1">dochte</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Die daer hadde eenen <rhyme label="b" type="m" corresp="#s14:l2">grondt</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">Welcke Schepper en <rhyme label="c" type="m">Timmer-man</rhyme></l>
        <l id="s14:l6" met="2" type="+-">Diese <rhyme label="a" type="f" corresp="#s14:l1">wrochte</rhyme></l>
        <l id="s14:l7" met="3" type="+-">Godt diet al wel <rhyme label="c" type="m" corresp="#s14:l5">kan</rhyme></l>
        <l id="s14:l8" met="2" type="+-">Was daer <rhyme label="c" type="m" corresp="#s14:l5">van</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Wt dese Stadt moet <rhyme label="a" type="f">blyven</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Dat Aertsche Vleesch en <rhyme label="b" type="m">Bloet</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Dat dicwils komt <rhyme label="a" type="f" corresp="#s15:l1">bekyven</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Den Geest in het <rhyme label="b" type="m" corresp="#s15:l2">gemoet</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">Ghelijck dat uytverkooren <rhyme label="c" type="m">Vat</rhyme></l>
        <l id="s15:l6" met="2" type="+-">Naer zijn <rhyme label="a" type="f" corresp="#s15:l1">schrijven</rhyme>:</l>
        <l id="s15:l7" met="3" type="+-">Veel strijt heeft <rhyme label="c" type="m" corresp="#s15:l5">gehadt</rhyme></l>
        <l id="s15:l8" met="2" type="+-">Oock wel <rhyme label="c" type="m" corresp="#s15:l5">zat</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Wat hy met zwaer <rhyme label="a" type="f">versuchten</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Verlangde naer zijn <rhyme label="b" type="m">Huys</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Op dat hy mochte <rhyme label="a" type="f" corresp="#s16:l1">ontvluchten</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Dat zware groote <rhyme label="b" type="m" corresp="#s16:l2">Kruys</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">En by Christum worden <rhyme label="c" type="m">gekleydt</rhyme></l>
        <l id="s16:l6" met="2" type="+-">Daer geen <rhyme label="a" type="f" corresp="#s16:l1">vruchten</rhyme>,</l>
        <l id="s16:l7" met="3" type="+-">Van druck noch van <rhyme label="c" type="m" corresp="#s16:l5">leyt</rhyme></l>
        <l id="s16:l8" met="2" type="+-">Sijn <rhyme label="c" type="m" corresp="#s16:l5">bereydt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Princelijck Godt <rhyme label="a" type="f">getrouwen</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Bewaert ons van <rhyme label="b" type="m">verderf</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Wilt ons t' samen <rhyme label="a" type="f" corresp="#s17:l1">behouwen</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Tot die eeuwige <rhyme label="b" type="m" corresp="#s17:l2">Erff</rhyme>,</l>
        <l id="s17:l5" met="4" type="+-">Dat wy u aenschijn met <rhyme label="c" type="m">jolijdt</rhyme></l>
        <l id="s17:l6" met="2" type="+-">Mogen <rhyme label="a" type="f" corresp="#s17:l1">aenschouwen</rhyme></l>
        <l id="s17:l7" met="3" type="+-">Elck schict hem met <rhyme label="c" type="m" corresp="#s17:l5">vlijf</rhyme></l>
        <l id="s17:l8" met="2" type="+-">Naer den <rhyme label="c" type="m" corresp="#s17:l5">tijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
