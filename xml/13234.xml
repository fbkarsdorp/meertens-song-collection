  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IN Bethlehem met al ons <rhyme label="a" type="f">schapen</rhyme></l>
        <l id="s1:l2" met="5" type="+-">By den Herder, die voor ons wil <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En na sijn beelt ons heeft <rhyme label="a" type="f" corresp="#s1:l1">geschapen</rhyme>,</l>
        <l id="s1:l4" met="5" type="+-">Laet ons met een danckbaer herte <rhyme label="b" type="m" corresp="#s1:l2">gaen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En ons in sijnen stal <rhyme label="c" type="f">verblijen</rhyme></l>
        <l id="s1:l6" met="3" type="+-">In den goeden <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Die gedaelt is <rhyme label="d" type="m" corresp="#s1:l6">neer</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Om soo te <rhyme label="c" type="f" corresp="#s1:l5">bevrijen</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Ons van de wolven <rhyme label="d" type="m" corresp="#s1:l6">weer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Laet ons het soete Kindt <rhyme label="a" type="f">besoecken</rhyme></l>
        <l id="s2:l2" met="5" type="+-">Om den mensch gebooren in de <rhyme label="b" type="m">Stal</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En in een kribb', in arme <rhyme label="a" type="f" corresp="#s2:l1">doecken</rhyme></l>
        <l id="s2:l4" met="5" type="+-">Neergeleyt, die Meester is van <rhyme label="b" type="m" corresp="#s2:l2">al</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Laet ons die liefde weer <rhyme label="c" type="f">beminnen</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">En in <rhyme label="d" type="m">Bethlehem</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Na sijn soete <rhyme label="d" type="m" corresp="#s2:l6">stem</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Al ons hert, en <rhyme label="c" type="f" corresp="#s2:l5">sinnen</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Laet eeuwigh weyen <rhyme label="d" type="m" corresp="#s2:l6">hem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hier niet te sien is voor ons <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s3:l2" met="5" type="+-">Als een' arme Moeder met haer <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Den Os, en Esel met <rhyme label="a" type="f" corresp="#s3:l1">medoogen</rhyme></l>
        <l id="s3:l4" met="5" type="+-">Dit verwermen in de kouwe <rhyme label="b" type="m" corresp="#s3:l2">windt</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Met haren asem, in het <rhyme label="c" type="f">midden</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Van haer twee <rhyme label="d" type="m">geleyt</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Als het is <rhyme label="d" type="m" corresp="#s3:l6">voorseyt</rhyme>.</l>
        <l id="s3:l8" met="3" type="+-">Laet ons Godt aen <rhyme label="c" type="f" corresp="#s3:l5">bidden</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Met Joseph wel <rhyme label="d" type="m" corresp="#s3:l6">bereyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hier wy de droeve suchtjens <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s4:l2" met="5" type="+-">Van het Kindt, dat schreyt om onse <rhyme label="b" type="m">kouw</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die oock een steenen hert <rhyme label="a" type="f" corresp="#s4:l1">doorbooren</rhyme></l>
        <l id="s4:l4" met="5" type="+-">En bewegen ons noch tot <rhyme label="b" type="m" corresp="#s4:l2">berouw</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Laet ons de drupjens van sijn <rhyme label="c" type="f">wangen</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Klaer als <rhyme label="d" type="m">kristallijn</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Troost in smert, en <rhyme label="d" type="m" corresp="#s4:l6">pijn</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">In ons hert <rhyme label="c" type="f" corresp="#s4:l5">ontfangen</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Der sonden <rhyme label="d" type="m" corresp="#s4:l6">medecijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Laet ons met weder-liefde <rhyme label="a" type="f">raken</rhyme>,</l>
        <l id="s5:l2" met="5" type="+-">En omhelsen hem nu sonder <rhyme label="b" type="m">vrees</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Laet ons de goetheyt eeuwigh <rhyme label="a" type="f" corresp="#s5:l1">smaken</rhyme></l>
        <l id="s5:l4" met="5" type="+-">Van het Woordt geworden om ons <rhyme label="b" type="m" corresp="#s5:l2">vlees</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Laet ons sijn lieve traentjens <rhyme label="c" type="f">proeven</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Die noch ons <rhyme label="d" type="m">bemindt</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">En weerom <rhyme label="d" type="m" corresp="#s5:l6">ontbindt</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">En niet meer <rhyme label="c" type="f" corresp="#s5:l5">bedroeven</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Het aldersoetste <rhyme label="d" type="m" corresp="#s5:l6">Kindt</rhyme>.</l>
      </lg>
    </lg>
  </text>
