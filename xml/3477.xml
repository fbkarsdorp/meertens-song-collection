  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Verdedighende <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ghy zijt gheneghen <rhyme label="a" type="m" corresp="#s1:l1">tot</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Alle welighe <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Ghy slist de <rhyme label="c" type="m">twist</rhyme></l>
        <l id="s1:l5" met="5" type="-+">Door wreken, en ghy baart den winner <rhyme label="b" type="m" corresp="#s1:l3">rust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Nu sydy dan ons <rhyme label="a" type="m">mee</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De Vader van de <rhyme label="a" type="m" corresp="#s2:l1">vree</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Want de boose van <rhyme label="b" type="m">aart</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Die laat het <rhyme label="c" type="m">quaat</rhyme></l>
        <l id="s2:l5" met="5" type="-+">Door dwang, en vreese van u bloeghe <rhyme label="b" type="m" corresp="#s2:l3">swaart</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy gheeft den vromen <rhyme label="a" type="m">mensch</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Gheluckich alle <rhyme label="a" type="m" corresp="#s3:l1">wensch</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En den quaden <rhyme label="b" type="m">vernielt</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Dijn handt met <rhyme label="c" type="m">schant</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">Die voor u blakeren niet neder <rhyme label="b" type="m" corresp="#s3:l3">knielt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dies buyghen tot Gods <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">d'Achyven waardich <rhyme label="a" type="m" corresp="#s4:l1">neer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En sy boeten een <rhyme label="b" type="m">vyer</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Hooch op den <rhyme label="c" type="m">top</rhyme></l>
        <l id="s4:l5" met="5" type="-+">Van 't outaar, en sy slachten 't waarde <rhyme label="b" type="m" corresp="#s4:l3">dier</rhyme>.</l>
      </lg>
    </lg>
  </text>
