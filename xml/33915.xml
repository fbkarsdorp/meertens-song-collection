    <melody>Waar is de dochter van Sion</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IK ben gekoomen op een <rhyme label="a" type="m">vuer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Te senden op de <rhyme label="b" type="f">landen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wat wil ik dan op dese <rhyme label="a" type="m" corresp="#s1:l1">uer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dan dat het raek aen <rhyme label="b" type="f" corresp="#s1:l2">branden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ik moet gedoopt sijn met een <rhyme label="a" type="m">doop</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hoe stijf ik daer na <rhyme label="b" type="f">hake</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ik wensche met een groote <rhyme label="a" type="m" corresp="#s2:l1">hoop</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat ik daer eens <rhyme label="b" type="f" corresp="#s2:l2">toe-rake</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Meynt gy dat ik gekoomen <rhyme label="a" type="m">ben</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Op d'Aerdt vreed' te <rhyme label="b" type="f">verbreyden</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">O neen, segh ik u; want ik <rhyme label="a" type="m" corresp="#s3:l1">sen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Veel oorsaek om te <rhyme label="b" type="f" corresp="#s3:l2">scheyden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">In een huys sal 'er vijf <rhyme label="a" type="m">voortaen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Te samen sijn <rhyme label="b" type="f">woonaghtigh</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Drie sullen tegen twee <rhyme label="a" type="m" corresp="#s4:l1">opstaen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Twee tegen drie <rhyme label="b" type="f" corresp="#s4:l2">twistaghtigh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den Soone weder-staet sijn <rhyme label="a" type="m">Vaêr</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Den Vaêr weerstaet sijn <rhyme label="b" type="f">Kinde</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">De Nichte staet op tegen <rhyme label="a" type="m" corresp="#s5:l1">Snaer</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Moêr, Dochter sijn geen <rhyme label="b" type="f" corresp="#s5:l2">Vrinde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Heer Iesus seyde tot de <rhyme label="a" type="m">Schaer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Als gy siet <rhyme label="b" type="f">op-gereesen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Een Wolk in 't Oost, dan seght gy <rhyme label="a" type="m" corresp="#s6:l1">waer</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Daer sal slagh-reegen <rhyme label="b" type="f" corresp="#s6:l2">weesen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wanneer den Suyden wint <rhyme label="a" type="m">op-blaest</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dan seght gy, 't sal sijn <rhyme label="b" type="f">heete</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Des Luchts gestalte kent gy <rhyme label="a" type="m" corresp="#s7:l1">haest</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dees tijdt wilt gy niet <rhyme label="b" type="f" corresp="#s7:l2">weete</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hoe, oordeelt gy u selven <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dat recht magh sijn te <rhyme label="b" type="f">deegen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als gy met uw party u <rhyme label="a" type="m" corresp="#s8:l1">siet</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Te reysen onder <rhyme label="b" type="f" corresp="#s8:l2">weegen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Weest naerstigh u te maken <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Eer dat gy van 't <rhyme label="b" type="f">gerechte</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Gelevert worde, en dan <rhyme label="a" type="m" corresp="#s9:l1">gy</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Genoomen wordt in <rhyme label="b" type="f" corresp="#s9:l2">heghte</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ik segge u, gy raekt niet <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Men sal u niet <rhyme label="b" type="f">uyt-halen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Voor dat gy sult den lesten <rhyme label="a" type="m" corresp="#s10:l1">duyt</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Voor uwe schult <rhyme label="b" type="f" corresp="#s10:l2">betalen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O Heer, geeft ons <rhyme label="a" type="m">voorsichtigheydt</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Dat wy ons mogen <rhyme label="b" type="f">maken</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Te sijn op onsen tijdt <rhyme label="a" type="m" corresp="#s11:l1">bereydt</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Om vry van slaegh te <rhyme label="b" type="f" corresp="#s11:l2">raken</rhyme>.</l>
      </lg>
    </lg>
  </text>
