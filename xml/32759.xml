  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALleluia den blijden <rhyme label="a" type="m">thoon</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Wort nu ghesonghen soet en <rhyme label="a" type="m" corresp="#s1:l1">schoon</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Waer dat ick ben oft waer ick <rhyme label="b" type="m">ga</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Mijn siele singht <rhyme label="b" type="m" corresp="#s1:l3">Alleluia</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met groote vreuchden in den <rhyme label="a" type="m">geest</rhyme></l>
        <l id="s2:l2" met="4" type="-+">In dese feest van Paesschen <rhyme label="a" type="m" corresp="#s2:l1">meest</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dan hoortmen singen, vroegh en <rhyme label="b" type="m">spa</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dat blijde liet <rhyme label="b" type="m" corresp="#s2:l3">Alleluia</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit is den grooten <rhyme label="a" type="m">blijden-dagh</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die David inden gheest <rhyme label="a" type="m" corresp="#s3:l1">voorsach</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Singht vreughdelijck soo ick u <rhyme label="b" type="m">ra</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dat blijde liet <rhyme label="b" type="m" corresp="#s3:l3">Alleluia</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hier boven in des hemels <rhyme label="a" type="m">throon</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Daer wort gesongen wonder <rhyme label="a" type="m" corresp="#s4:l1">schoon</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Met soete stemme <rhyme label="b" type="m">Musica</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Het soete liet <rhyme label="b" type="m" corresp="#s4:l3">Alleluia</rhyme>.</l>
      </lg>
    </lg>
  </text>
