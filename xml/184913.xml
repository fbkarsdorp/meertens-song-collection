  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="1" type="-+">WAt <rhyme label="a" type="f">smerte</rhyme></l>
        <l id="s1:l2" met="1" type="-+">Des <rhyme label="a" type="f" corresp="#s1:l1">herte</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Doet u, Ignati, <rhyme label="b" type="f">suchten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Naer s'Hemels <rhyme label="b" type="f" corresp="#s1:l3">genuchten</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Als gy t'Firmament <rhyme label="c" type="m">besiet</rhyme>?</l>
        <l id="s1:l6" met="1" type="-+">U <rhyme label="d" type="f">trecken</rhyme>,</l>
        <l id="s1:l7" met="1" type="-+"><rhyme label="d" type="f" corresp="#s1:l6">Verwecken</rhyme></l>
        <l id="s1:l8" met="2" type="-+">De Sterren, en <rhyme label="e" type="f">straelen</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Die naer uw oog' <rhyme label="e" type="f" corresp="#s1:l8">daelen</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">d'Aerd' is eenen <rhyme label="c" type="m" corresp="#s1:l5">Niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="1" type="-+">Hoe <rhyme label="a" type="f">blaeken</rhyme>,</l>
        <l id="s2:l2" met="1" type="-+">En <rhyme label="a" type="f" corresp="#s2:l1">haeken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hoe vliegen uwe <rhyme label="b" type="f">sinnen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om Godt te <rhyme label="b" type="f" corresp="#s2:l3">beminnen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Als gy siet het Hemels <rhyme label="c" type="m">licht</rhyme>!</l>
        <l id="s2:l6" met="1" type="-+">Hoe <rhyme label="d" type="f">gloeyen</rhyme>,</l>
        <l id="s2:l7" met="1" type="-+">Hoe <rhyme label="d" type="f" corresp="#s2:l6">vloeyen</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Om hoog' uw' <rhyme label="e" type="f">gedachten</rhyme>!</l>
        <l id="s2:l9" met="2" type="-+">Alleen dese <rhyme label="e" type="f" corresp="#s2:l8">trachten</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Naer dit soet <rhyme label="c" type="m" corresp="#s2:l5">gesicht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="1" type="-+">Van <rhyme label="a" type="f">stonden</rhyme></l>
        <l id="s3:l2" met="1" type="-+"><rhyme label="a" type="f" corresp="#s3:l1">Ontbonden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Wilt gy uyt t'lichaem <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En syn, <rhyme label="b" type="f" corresp="#s3:l3">op-geresen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Uyt wereldrsche <rhyme label="c" type="m">vuyligheydt</rhyme>:</l>
        <l id="s3:l6" met="1" type="-+">De <rhyme label="d" type="f">rusten</rhyme>,</l>
        <l id="s3:l7" met="1" type="-+">En <rhyme label="d" type="f" corresp="#s3:l6">lusten</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Van d'Hemelsche <rhyme label="e" type="f">panden</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Doen uwe Ziel <rhyme label="e" type="f" corresp="#s3:l8">branden</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Naer Godts <rhyme label="c" type="m" corresp="#s3:l5">schoonigheydt</rhyme>.</l>
      </lg>
    </lg>
