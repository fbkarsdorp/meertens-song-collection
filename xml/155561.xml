    <tags/>
    <melody>Aanhoor gij dochters en jongmans al</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Alvermogend' <rhyme label="a" type="m">Opper-Heer</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Siet hier een wormpje <rhyme label="b" type="m">staen</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Of leggen, voor uw' voeten <rhyme label="a" type="m" corresp="#s1:l1">neer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Beschouw en siet het <rhyme label="b" type="m" corresp="#s1:l2">aen</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Siet hoe mijn hert van <rhyme label="c" type="f">binne</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Mijn innighst binnen <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Geroert, geraeckt,        En los <rhyme label="e" type="m">gemaeckt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wil leven tot uw' <rhyme label="d" type="m" corresp="#s1:l6">eer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wel Heere! spreeckt ghy nu een <rhyme label="a" type="m">woordt</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Gebiedt maer wat ghy <rhyme label="b" type="m">wilt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ick ben bereyt, uw' Knecht die <rhyme label="a" type="m" corresp="#s2:l1">hoort</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">'k Wil nu, met u in 't <rhyme label="b" type="m" corresp="#s2:l2">gildt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Al mijn voorgaende <rhyme label="c" type="f">lusten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die sal 't nu kosten <rhyme label="d" type="m">gaen</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Die moeten doodt,        Beyd' kleyn en <rhyme label="e" type="m">groot</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Die sullen achter <rhyme label="d" type="m" corresp="#s2:l6">staen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nu wil ick met u leven <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">En sterven soo 't <rhyme label="b" type="m">behoort</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Nu wil ick wacker in de <rhyme label="a" type="m" corresp="#s3:l1">weer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ia nu soo moet het <rhyme label="b" type="m" corresp="#s3:l2">voort</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Ick wil niet langer <rhyme label="c" type="f">dralen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En slepen achter <rhyme label="d" type="m">aen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Ick geef dees tijdt,        Geen uur <rhyme label="e" type="m">respijt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">'t Sal met my anders <rhyme label="d" type="m" corresp="#s3:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nu ben ick u, o Heer! <rhyme label="a" type="m">bereydt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Te dienen vroegh en <rhyme label="b" type="m">laet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">In voorspoedt, en in <rhyme label="a" type="m" corresp="#s4:l1">tegenheydt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In soet, in suur of <rhyme label="b" type="m" corresp="#s4:l2">quaedt</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">In woorden, en in <rhyme label="c" type="f">wercken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Lustigh, uyt 's herten <rhyme label="d" type="m">grondt</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Niet in den schijn,        Maer 't ware <rhyme label="e" type="m">zijn</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Nu en tot aller <rhyme label="d" type="m" corresp="#s4:l6">stondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hier is mijn hert, mijn ziel, mijn <rhyme label="a" type="m">sin</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Mijn leden, en <rhyme label="b" type="m">swackheydt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Kom Heer, en neem het alles <rhyme label="a" type="m" corresp="#s5:l1">in</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'t Is al voor u <rhyme label="b" type="m" corresp="#s5:l2">bereydt</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Treet ghy maer in uw' <rhyme label="c" type="f">Tempel</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Drijf uyt het snood' <rhyme label="d" type="m">gespuys</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Maeck my bequaem,        En <rhyme label="e" type="m">aengenaem</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Uw, tot een geest'lijck <rhyme label="d" type="m" corresp="#s5:l6">Huys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maeck ghy my Heer! voor u <rhyme label="a" type="m">bequaem</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Te zijn een <rhyme label="b" type="m">instrument</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Tot prijs en eer, van uwe <rhyme label="a" type="m" corresp="#s6:l1">Naem</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Waer ick my keer of <rhyme label="b" type="m" corresp="#s6:l2">wend'</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Maeck my, mijn <rhyme label="c" type="f">Uytverkooren</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Een vat tot uwer <rhyme label="d" type="m">eer</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Voor u bequaem,        En <rhyme label="e" type="m">aengenaem</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">In al mijn <rhyme label="d" type="m" corresp="#s6:l6">ommekeer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maeck ghy my even soo 't <rhyme label="a" type="m">behoort</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Gebruyck my tot uw' <rhyme label="b" type="m">eer</rhyme></l>
        <l id="s7:l3" met="4" type="-+">In alle saecken, voort en <rhyme label="a" type="m" corresp="#s7:l1">voort</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dit is mijn herts <rhyme label="b" type="m" corresp="#s7:l2">begeer</rhyme>;</l>
        <l id="s7:l5" met="3" type="-+">Mijn Ziel die staet <rhyme label="c" type="f">gelaten</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Is willigh en <rhyme label="d" type="m">bereydt</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Om nu voortaen,        De rechte <rhyme label="e" type="m">baen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Te wand'len in <rhyme label="d" type="m" corresp="#s7:l6">swackheydt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel Heere! kom my dan te <rhyme label="a" type="m">baet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Mijn swackheydt neem in <rhyme label="b" type="m">acht</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Mijn hulp, mijn troost mijn, <rhyme label="a" type="m" corresp="#s8:l1">toeverlaet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hout steets om my de <rhyme label="b" type="m" corresp="#s8:l2">wacht</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Mijn Harder! wilt niet <rhyme label="c" type="f">slapen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">My steets uw' hulpe <rhyme label="d" type="m">doet</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Mijn goet gemoet,        Steets queeckt en <rhyme label="e" type="m">voet</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Dit bidd' ick met <rhyme label="d" type="m" corresp="#s8:l6">ootmoet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Och lieve Vader! mach het <rhyme label="a" type="m">zijn</rhyme>?</l>
        <l id="s9:l2" met="3" type="-+">Voldoet mijn herts <rhyme label="b" type="m">begeer</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">'t Goed' voornemen volvoert in <rhyme label="a" type="m" corresp="#s9:l1">mijn</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Mijn uytverkooren <rhyme label="b" type="m" corresp="#s9:l2">Heer</rhyme>!</l>
        <l id="s9:l5" met="3" type="-+">Och! laet 'et wel <rhyme label="c" type="f">gelucken</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Versterckt my, nietigh <rhyme label="d" type="m">Mensch</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Uw Vader-hant,        Doe <rhyme label="e" type="m">onderstant</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Dit is mijn hooghste <rhyme label="d" type="m" corresp="#s9:l6">wensch</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hoor noch een woordt, mijn liefste <rhyme label="a" type="m">vriend</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">Mijn dorheydt, vruchtbaer <rhyme label="b" type="m">maeckt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Uw' geest, uw' troost, my dach <rhyme label="a" type="m" corresp="#s10:l1">verlient</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Uw' stroomen, tot my <rhyme label="b" type="m" corresp="#s10:l2">naeckt</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Bedouwt, en houwt in 't <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Uw Plantje, swack en <rhyme label="d" type="m">teer</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Uw scherm en schut,        My <rhyme label="e" type="m">onderstut</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Dat bidd' ick waerde <rhyme label="d" type="m" corresp="#s10:l6">Heer</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dit doend', dan sal 't eerst hebben <rhyme label="a" type="m">klem</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Wat dat ick wil en <rhyme label="b" type="m">wensch</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Wat dat ick hoor, en oock <rhyme label="a" type="m" corresp="#s11:l1">toestem</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Als een begeerigh <rhyme label="b" type="m" corresp="#s11:l2">Mensch</rhyme>.</l>
        <l id="s11:l5" met="3" type="-+">Alleen uw' milde <rhyme label="c" type="f">zegen</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Maeckt vruchtbaerheydt en <rhyme label="d" type="m">spoedt</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Dus, o mijn vrient!        My dit <rhyme label="e" type="m">verlient</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Dat bid ick met <rhyme label="d" type="m" corresp="#s11:l6">ootmoet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
