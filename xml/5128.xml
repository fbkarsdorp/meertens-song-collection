<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>5128</id>
    <date>
      <year-start>1924</year-start>
      <year-end>1925</year-end>
    </date>
    <tags>
      <tag standard-name="geuzenlied" translation="Geuzen song">Geuzenlied</tag>
      <tag standard-name="klaaglied" translation="lamentation">klaaglied</tag>
      <tag standard-name="spotlied" translation="mocking song">spotlied</tag>
    </tags>
    <melody>O rad van avontuur</melody>
    <categories>
      <category translation="emotions">emoties</category>
      <category translation="amusement">vermaak</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hoe duyster is die <rhyme label="a" type="f">Sonne</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Sy gheeft so droeven <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Al waerteen Helsche <rhyme label="a" type="f" corresp="#s1:l1">Tonne</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Sy brandt u swart <rhyme label="b" type="m" corresp="#s1:l2">fenijn</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">My dunckt sy wil ons <rhyme label="c" type="f">moorden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En leyden int leste <rhyme label="d" type="m">verdriet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Ick hoor so valsche <rhyme label="c" type="f" corresp="#s1:l5">woorden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wy dwalen aen allen <rhyme label="c" type="f" corresp="#s1:l5">oorden</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Tschijnt Godt van Hemel <rhyme label="d" type="m" corresp="#s1:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Nochtans tgheschiet op <rhyme label="a" type="f">liste</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Alsoo ick mercken <rhyme label="b" type="m">can</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Daer praet een blau <rhyme label="a" type="f" corresp="#s2:l1">Sophiste</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met den armen <rhyme label="b" type="m" corresp="#s2:l2">Letterman</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">O Balcken ende <rhyme label="c" type="f">Boomen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Nu ist hem den rechten <rhyme label="d" type="m">raem</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hy roept zijn eyghen <rhyme label="c" type="f" corresp="#s2:l5">droomen</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">Die Son is hem <rhyme label="c" type="f" corresp="#s2:l5">benomen</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Nochtans voert hy den <rhyme label="d" type="m" corresp="#s2:l6">Naem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy roept Papales <rhyme label="a" type="f">casus</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">Und spreeckt so swaer <rhyme label="b" type="m">Latijn</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">So biecht die Roomsche <rhyme label="a" type="f" corresp="#s3:l1">Rasus</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Met al zijn <rhyme label="b" type="m" corresp="#s3:l2">Huysgesin</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Tsijn die verdoemde <rhyme label="c" type="f">wercken</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Men doeter veel by <rhyme label="d" type="m">nacht</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Wanneer die Roomsche <rhyme label="c" type="f" corresp="#s3:l5">Klercken</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Veer van Sint Pieters <rhyme label="c" type="f" corresp="#s3:l5">Kercken</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Gaen op der heyligher <rhyme label="d" type="m" corresp="#s3:l6">dracht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sy staen aen Bulmans <rhyme label="a" type="f">Hecken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En wryven den olden <rhyme label="b" type="m">struyck</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sy souden ons gheeren <rhyme label="a" type="f" corresp="#s4:l1">verwecken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat Vaderlick <rhyme label="b" type="m" corresp="#s4:l2">ghebruyck</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Seer oldt wel hier <rhyme label="c" type="f">ghecomen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Veel older dan Godts <rhyme label="d" type="m">Woordt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ghy sultse Heer <rhyme label="c" type="f" corresp="#s4:l5">verdoemen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Sy wercken in haer <rhyme label="c" type="f" corresp="#s4:l5">beroemen</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Der eewigher Waerheyt <rhyme label="d" type="m" corresp="#s4:l6">Moort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ick canse niet <rhyme label="a" type="f">bekennen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">So seer ben ick <rhyme label="b" type="m">verblindt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dien stanck die sy ons <rhyme label="a" type="f" corresp="#s5:l1">brenghen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Vliecht duyster in den <rhyme label="b" type="m" corresp="#s5:l2">windt</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Tsijn onghehoorde <rhyme label="c" type="f">Gasten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">My dunckt sy blijven <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Oft wyse dus <rhyme label="c" type="f" corresp="#s5:l5">verrasten</rhyme></l>
        <l id="s5:l8" met="3" type="-+">En liepen daer by en <rhyme label="c" type="f" corresp="#s5:l5">tasten</rhyme>,:</l>
        <l id="s5:l9" met="3" type="-+">Ick hoep tsal wel <rhyme label="d" type="m" corresp="#s5:l6">bestaen</rhyme>.:</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick tast een Roomsche <rhyme label="a" type="f">Poppe</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Een Minneken sonder <rhyme label="b" type="m">Baert</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Het cruypt eerst uut den <rhyme label="a" type="f" corresp="#s6:l1">doppe</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ten is niet wel <rhyme label="b" type="m" corresp="#s6:l2">ghepaert</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Met eenen olden <rhyme label="c" type="f">Harmen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die op zijn slapen <rhyme label="d" type="m">wacht</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ghy hoort het te <rhyme label="c" type="f" corresp="#s6:l5">verwermen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Heer Paus in uwen <rhyme label="c" type="f" corresp="#s6:l5">armen</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">En ketlent al den <rhyme label="d" type="m" corresp="#s6:l6">nacht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ick tast een styven <rhyme label="a" type="f">Osse</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Een uutgeplockte <rhyme label="b" type="m">Beest</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Met eenen valschen <rhyme label="a" type="f" corresp="#s7:l1">Vosse</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Die Hel noch Hemel en <rhyme label="b" type="m" corresp="#s7:l2">vreest</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Hy staet op zijn <rhyme label="c" type="f">beduncken</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Maer ghy goet Acker <rhyme label="d" type="m">knecht</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Ghy zijt van older <rhyme label="c" type="f" corresp="#s7:l5">Munten</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Segt ons drie goede <rhyme label="c" type="f" corresp="#s7:l5">puncten</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">U preken valt u te <rhyme label="d" type="m" corresp="#s7:l6">slecht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Gaet thuys ghy valsche <rhyme label="a" type="f">Boden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ghy vruchten <rhyme label="b" type="m">afgepluckt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ghy Babylonsche <rhyme label="a" type="f" corresp="#s8:l1">Goden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Die reys is u <rhyme label="b" type="m" corresp="#s8:l2">misluckt</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Holdt sulcke leer te <rhyme label="c" type="f">vooren</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Vangt ons met ander <rhyme label="d" type="m">list</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">U Narren en u <rhyme label="c" type="f" corresp="#s8:l5">Dooren</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Die ghy eens hebt <rhyme label="c" type="f" corresp="#s8:l5">gheswooren</rhyme></l>
        <l id="s8:l9" met="3" type="-+">Den plompen <rhyme label="d" type="m" corresp="#s8:l6">Antechrist</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Die olde Vaders <rhyme label="a" type="f">deden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Gheheel na Gods <rhyme label="b" type="m">gheset</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Wie anders wil doen <rhyme label="a" type="f" corresp="#s9:l1">treden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Is valsch verander der <rhyme label="b" type="m" corresp="#s9:l2">Wet</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Hy laetse niet <rhyme label="c" type="f">vercleenen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Noch eenich Woort toe <rhyme label="d" type="m">doen</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Als blinde Draken <rhyme label="c" type="f" corresp="#s9:l5">meenen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Wanneer sy Holt en <rhyme label="c" type="f" corresp="#s9:l5">Steenen</rhyme></l>
        <l id="s9:l9" met="3" type="-+">Gaen cleeden blauw en <rhyme label="d" type="m" corresp="#s9:l6">groen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Tis schant voor so <rhyme label="a" type="f">gheleerde</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die Meesters zijn <rhyme label="b" type="m">ghecroont</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Te staen met die <rhyme label="a" type="f" corresp="#s10:l1">verkeerde</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Die Balams Coninck <rhyme label="b" type="m" corresp="#s10:l2">loont</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En maken Godt veel <rhyme label="c" type="f">minder</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Dan eenich <rhyme label="d" type="m">Creatuer</rhyme>:</l>
        <l id="s10:l7" met="3" type="-+">Ghy spreeckt als blinde <rhyme label="c" type="f" corresp="#s10:l5">kinder</rhyme></l>
        <l id="s10:l8" met="3" type="-+">U groote Naem niet <rhyme label="c" type="f" corresp="#s10:l5">hinder</rhyme>,</l>
        <l id="s10:l9" met="3" type="-+">Hier en by u <rhyme label="d" type="m" corresp="#s10:l6">ghebuer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Adieu ghy Christen <rhyme label="a" type="f">Schapen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Die ick eens lestmael <rhyme label="b" type="m">sach</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Wilt altijt met my <rhyme label="a" type="f" corresp="#s11:l1">gapen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Na eenen beteren <rhyme label="b" type="m" corresp="#s11:l2">dach</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Ghy blijft in enghe <rhyme label="c" type="f">stricken</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Ick loop vast over <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Daer salder veel op <rhyme label="c" type="f" corresp="#s11:l5">micken</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Soud ick van Gods woort <rhyme label="c" type="f" corresp="#s11:l5">wijcken</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">Twaer een swaer <rhyme label="d" type="m" corresp="#s11:l6">ongheval</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
