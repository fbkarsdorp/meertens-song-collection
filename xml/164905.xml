    <tags/>
    <melody>De winter is vergangen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wilt u van sondt <rhyme label="a" type="f">ontlasten</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Och Christenen wie ghy <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wilt bidden ende <rhyme label="a" type="f" corresp="#s1:l1">vasten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In desen heyligen <rhyme label="b" type="m" corresp="#s1:l2">tijdt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Thoont Caritaet den <rhyme label="c" type="f">armen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Vyt Lieft van uwen <rhyme label="d" type="m">Godt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die u dan sal <rhyme label="c" type="f" corresp="#s1:l5">ontfermen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Beleeft ghy sijn <rhyme label="d" type="m" corresp="#s1:l6">Gebodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Och mensch wilt u <rhyme label="a" type="f">verneeren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ghy zijt ghemaeckt van <rhyme label="b" type="m">Aerdt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In Aerde suldy <rhyme label="a" type="f" corresp="#s2:l1">keeren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Hoe dat ghy u <rhyme label="b" type="m" corresp="#s2:l2">bewaert</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dus wilt u vleysch niet <rhyme label="c" type="f">minnen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat ghy ‘t vasten <rhyme label="d" type="m">versmaedt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Laet vasten al u <rhyme label="c" type="f" corresp="#s2:l5">sinnen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Die oorsaeck zijn van’t <rhyme label="d" type="m" corresp="#s2:l6">quaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hebt ghy met uwe <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Gesien naer <rhyme label="b" type="m">ydelheydt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Daer door ghy zijt <rhyme label="a" type="f" corresp="#s3:l1">bedroghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Maeckt dat ghy nu wat <rhyme label="b" type="m" corresp="#s3:l2">schreydt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Aensiet den Heere <rhyme label="c" type="f">lijden</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die u lijden <rhyme label="d" type="m">verlicht</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Dan sult ghy seer wel <rhyme label="c" type="f" corresp="#s3:l5">mijden</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Alle onkuysch <rhyme label="d" type="m" corresp="#s3:l6">ghesicht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Placht ghy met vreucht te <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Iock, boert oft <rhyme label="b" type="m">achter-spraeck</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Keert daer nu af u <rhyme label="a" type="f" corresp="#s4:l1">ooren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Neemt van u selven <rhyme label="b" type="m" corresp="#s4:l2">wraeck</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Hoordt na des Heeren <rhyme label="c" type="f">reden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wat u gheboden <rhyme label="d" type="m">werdt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Gheraden en <rhyme label="c" type="f" corresp="#s4:l5">ghebeden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Prent dit wel in u <rhyme label="d" type="m" corresp="#s4:l6">hert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hebt ghy Ruyckende <rhyme label="a" type="f">kruyden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Misbruyckt naer uwen <rhyme label="b" type="m">wensch</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Den stanck der Arme <rhyme label="a" type="f" corresp="#s5:l1">luyden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Mijdt niet u eeve <rhyme label="b" type="m" corresp="#s5:l2">mensch</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Gevangenen ofte <rhyme label="c" type="f">siecken</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Besoeckt vry <rhyme label="d" type="m">allegaer</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Of sy wat qualijck <rhyme label="c" type="f" corresp="#s5:l5">riecken</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Godt sal’t loonen hier <rhyme label="d" type="m" corresp="#s5:l6">naer</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Placht ghy dickwils te <rhyme label="a" type="f">proeven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Te lecker dranck of <rhyme label="b" type="m">spijs</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Boven natuers <rhyme label="a" type="f" corresp="#s6:l1">behoeven</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Bereydt elck op sijn <rhyme label="b" type="m" corresp="#s6:l2">wijs</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Denckt ick wil my <rhyme label="c" type="f">ontrecken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Al mocht het wel <rhyme label="d" type="m">bestaen</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Hier door sult ghy <rhyme label="c" type="f" corresp="#s6:l5">bedecken</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Dat on maet heeft <rhyme label="d" type="m" corresp="#s6:l6">mis-daen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Socht ghy al u <rhyme label="a" type="f">wellusten</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Des vleysch door quaet <rhyme label="b" type="m">bedrijf</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Wilt nu te minder <rhyme label="a" type="f" corresp="#s7:l1">rusten</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Tracteert wat hard u <rhyme label="b" type="m" corresp="#s7:l2">lijf</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Dattet u vleysch kan <rhyme label="c" type="f">voelen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">T’welcke was ghewent tot <rhyme label="d" type="m">sondt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Laet eyghen liefd’ <rhyme label="c" type="f" corresp="#s7:l5">verkoelen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Soo comt Godts lief’d <rhyme label="d" type="m" corresp="#s7:l6">terstondt</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
