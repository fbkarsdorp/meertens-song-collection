    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Welkom gewenschte <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De grootste die men <rhyme label="a" type="m" corresp="#s1:l1">sagh</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En d’alderschoonst’ op <rhyme label="b" type="f">aerde</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Wanneer een Iongh-vrouw <rhyme label="c" type="m">teer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Een Maget haren <rhyme label="c" type="m" corresp="#s1:l4">Heer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En ‘s Werelts Heylandt <rhyme label="b" type="f" corresp="#s1:l3">baerde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Doen ’t vrede-brengend’ <rhyme label="a" type="m">Lam</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die Mensch-behouder <rhyme label="a" type="m" corresp="#s2:l1">quam</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Doen Christus wierd’ <rhyme label="b" type="f">geboren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En alles weder <rhyme label="c" type="m">gaf</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wat eertijdts tot een <rhyme label="c" type="m" corresp="#s2:l4">straf</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Door Adam was <rhyme label="b" type="f" corresp="#s2:l3">verloren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Van hier dan bange <rhyme label="a" type="m">Geest</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Wy zijn niet meer <rhyme label="a" type="m" corresp="#s3:l1">bevreest</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Voor Gods ghericht en <rhyme label="b" type="f">oordeel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">De soete <rhyme label="c" type="m">Hemel-schaer</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Brenght ons een blijde <rhyme label="c" type="m" corresp="#s3:l4">maer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Van heyl, geluck en <rhyme label="b" type="f" corresp="#s3:l3">voordeel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wy saten diep in <rhyme label="a" type="m">druck</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">Maer d’Engel komt ons <rhyme label="a" type="m" corresp="#s4:l1">luck</rhyme></l>
        <l id="s4:l3" met="3" type="-+">En groote blijdtschap <rhyme label="b" type="f">seggen</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Wy lagen in <rhyme label="c" type="m">verdriet</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Maer die ons <rhyme label="c" type="m" corresp="#s4:l4">neder-stiet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sal nu self <rhyme label="b" type="f" corresp="#s4:l3">onder-leggen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Singh dan, O Syons <rhyme label="a" type="m">Ieucht</rhyme>!</l>
        <l id="s5:l2" met="3" type="-+">En schater uyt van <rhyme label="a" type="m" corresp="#s5:l1">vreucht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dewijl ons wordt <rhyme label="b" type="f">gesonden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Een Kindt een <rhyme label="c" type="m">Wonder-Kindt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Waer in de Ziele <rhyme label="c" type="m" corresp="#s5:l4">vindt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Den Balsem harer <rhyme label="b" type="f" corresp="#s5:l3">Wonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dit Kindt doet ons <rhyme label="a" type="m">voortaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met Godt in vrede <rhyme label="a" type="m" corresp="#s6:l1">staen</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Dit Kindt brenght ons tot <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En tot een beter <rhyme label="c" type="m">staet</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Te vooren Adams <rhyme label="c" type="m" corresp="#s6:l4">Zaet</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Maer nu een Volck des <rhyme label="b" type="f" corresp="#s6:l3">Heeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Weest danckbaer, O mijn <rhyme label="a" type="m">Ziel</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">En voor dijn Heylandt <rhyme label="a" type="m" corresp="#s7:l1">kniel</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die met soo veel <rhyme label="b" type="f">ghenaden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Ons over-schuddet <rhyme label="c" type="m">heeft</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Looft hem die eeuwigh <rhyme label="c" type="m" corresp="#s7:l4">leeft</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Voor alle sijn <rhyme label="b" type="f" corresp="#s7:l3">weldaden</rhyme>.</l>
      </lg>
    </lg>
  </text>
