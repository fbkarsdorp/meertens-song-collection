    <tags>
      <tag>beggar song</tag>
    </tags>
    <melody>Goossen ik en mag het niet lijden</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Draeght rouwe nu door 't gantsche <rhyme label="a" type="f">Spangien</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Kastilien ende <rhyme label="b" type="m">Portugael</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Jtalien, en gantsch <rhyme label="a" type="f" corresp="#s1:l1">Almangien</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ghy Room-gesinden <rhyme label="b" type="m" corresp="#s1:l2">al-te-mael</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Door gants Brabant en Vlaend'ren <rhyme label="c" type="m">wijt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Draeght nu Rou in 't hert vol <rhyme label="c" type="m" corresp="#s1:l5">spijt</rhyme>,</l>
        <l id="s1:l7" met="2" type="+-">Heer-oom seer <rhyme label="d" type="m">beus</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Mach wel kijcken op sijn <rhyme label="d" type="m" corresp="#s1:l7">neus</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Om dat den Bos is <rhyme label="d" type="m" corresp="#s1:l7">Geus</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Siet aldus en wilt niet <rhyme label="a" type="f">laten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Vaert daer heen met uwen <rhyme label="b" type="m">danck</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Meet haer vry met groote <rhyme label="a" type="f" corresp="#s2:l1">maten</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Want den Rou moet wesen <rhyme label="b" type="m" corresp="#s2:l2">lanck</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Hy moet strecken met <rhyme label="c" type="m">getreur</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Van Brussel heel Antwerpen <rhyme label="c" type="m" corresp="#s2:l5">deur</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">Voorts <rhyme label="d" type="m">gewent</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Na de groote Stad van <rhyme label="d" type="m" corresp="#s2:l7">Gent</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Bruggen, Yp'ren <rhyme label="d" type="m" corresp="#s2:l7">excellent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Want Madame de <rhyme label="a" type="f">Jnfante</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dit groot verlies is haer een <rhyme label="b" type="m">spijt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'T is al verdriet aen alle <rhyme label="a" type="f" corresp="#s3:l1">kanten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Den Bosch alsoo te worden <rhyme label="b" type="m" corresp="#s3:l2">quijt</rhyme>;</l>
        <l id="s3:l5" met="4" type="-+">En die Stad van Wesel <rhyme label="c" type="m">nut</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Met Ammonicy en <rhyme label="c" type="m" corresp="#s3:l5">Geschut</rhyme>,</l>
        <l id="s3:l7" met="2" type="+-">Dies treurt de <rhyme label="d" type="m">vrou</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">'t Js wel reden, dat sy <rhyme label="d" type="m" corresp="#s3:l7">sou</rhyme></l>
        <l id="s3:l9" met="4" type="+-">Om haer schade draghen <rhyme label="d" type="m" corresp="#s3:l7">rou</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">En graef Hendrick in <rhyme label="a" type="f">persoone</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dit groot verflies is hem oock <rhyme label="b" type="m">leet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Hy begeert een Rouw-mantel <rhyme label="a" type="f" corresp="#s4:l1">schoone</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Daer 't gantsche Land mee wort <rhyme label="b" type="m" corresp="#s4:l2">bekleet</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Den eenen hoeck komt <rhyme label="c" type="m">onghedeert</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Over heel Sint-Stevens <rhyme label="c" type="m" corresp="#s4:l5">weert</rhyme>,</l>
        <l id="s4:l7" met="2" type="+-">Over <rhyme label="d" type="m">maes</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Jn teecken dat den Geus, <rhyme label="d" type="m" corresp="#s4:l7">eylaes</rhyme>!</l>
        <l id="s4:l9" met="4" type="+-">Js van Bos en Wesel <rhyme label="d" type="m" corresp="#s4:l7">baes</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Den tweeden hoeck of steert <rhyme label="a" type="f">gheheeten</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Behoeft in Brabant wel <rhyme label="b" type="m">keur</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Om haer te decken dat sy <rhyme label="a" type="f" corresp="#s5:l1">sweeten</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Met den rou van achter en <rhyme label="b" type="m" corresp="#s5:l2">veur</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Want den Bos al in <rhyme label="c" type="m">Brabant</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Stont soo menigh Heyligh <rhyme label="c" type="m" corresp="#s5:l5">Sant</rhyme>,</l>
        <l id="s5:l7" met="2" type="+-">Mijn Heer Sint <rhyme label="d" type="m">Jan</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Jsser niet qualijck <rhyme label="d" type="m" corresp="#s5:l7">an</rhyme></l>
        <l id="s5:l9" met="4" type="+-">Dat hy mee moet in den <rhyme label="d" type="m" corresp="#s5:l7">ban</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Den derden hoeck van desen <rhyme label="a" type="f">Mantel</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Den Jesuijt geveynst van <rhyme label="b" type="m">klap</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Behoeven die met haer <rhyme label="a" type="f" corresp="#s6:l1">getrantel</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En maken daer elck van een <rhyme label="b" type="m" corresp="#s6:l2">Kap</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Die sy om haer ooren <rhyme label="c" type="m">slaen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Als sy uyt den Bos nu <rhyme label="c" type="m" corresp="#s6:l5">gaen</rhyme>,</l>
        <l id="s6:l7" met="2" type="+-">Vast en <rhyme label="d" type="m">dicht</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Absolvat, vuylvat met haer <rhyme label="d" type="m" corresp="#s6:l7">bicht</rhyme></l>
        <l id="s6:l9" met="4" type="+-">Moet nu naer Antwerpen <rhyme label="d" type="m" corresp="#s6:l7">licht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Fransciscus Serverus <rhyme label="a" type="f">bouwe</rhyme></l>
        <l id="s7:l2" met="4" type="+-">En Pater Jgnatius <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Bekleet die arme Duyvels met <rhyme label="a" type="f" corresp="#s7:l1">rouwe</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">'t Js wijt van Jesus haren <rhyme label="b" type="m" corresp="#s7:l2">Patroon</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">'t Maeckt haer wel een groote <rhyme label="c" type="m">spijt</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Dat sy soo den Bos sijn <rhyme label="c" type="m" corresp="#s7:l5">quijt</rhyme>,</l>
        <l id="s7:l7" met="2" type="+-">Daer sy <rhyme label="d" type="m">bout</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Saten als een Peerel int <rhyme label="d" type="m" corresp="#s7:l7">Gout</rhyme>,</l>
        <l id="s7:l9" met="4" type="+-">Denckt of haer dit niet en <rhyme label="d" type="m" corresp="#s7:l7">rout</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Sy sullen soo vet niet <rhyme label="a" type="f">visschen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Als sy dus langh hebben <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Haer Vigilien en <rhyme label="a" type="f" corresp="#s8:l1">Siel-missen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Haer Aflaet en haer Bevaert <rhyme label="b" type="m" corresp="#s8:l2">gaen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Haer Heyl'ge dagen <rhyme label="c" type="m">in-gestelt</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Waer voor dat sy kregen <rhyme label="c" type="m" corresp="#s8:l5">gelt</rhyme>,</l>
        <l id="s8:l7" met="2" type="+-">Koorn en <rhyme label="d" type="m">Vlas</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Eyeren, Boter wat het <rhyme label="d" type="m" corresp="#s8:l7">was</rhyme>,</l>
        <l id="s8:l9" met="4" type="+-">'t Quam Heer-oom altijt te <rhyme label="d" type="m" corresp="#s8:l7">pas</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Snijders neemt u schaere, naelt en <rhyme label="a" type="f">garen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Loopt na Brussel gantsch <rhyme label="b" type="m">bier-en-broot</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Daer is wel werck voor ses <rhyme label="a" type="f" corresp="#s9:l1">jaren</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Want den rou is daer soo <rhyme label="b" type="m" corresp="#s9:l2">groot</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Snijt haer van het beste <rhyme label="c" type="m">stof</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Groote lange Kappen <rhyme label="c" type="m" corresp="#s9:l5">of</rhyme>,</l>
        <l id="s9:l7" met="2" type="+-">Voor <rhyme label="d" type="m">Singjoor</rhyme></l>
        <l id="s9:l8" met="4" type="+-">Hy leyt gedoken achter 't <rhyme label="d" type="m" corresp="#s9:l7">Choor</rhyme></l>
        <l id="s9:l9" met="4" type="+-">Om dat hy den Bosch <rhyme label="d" type="m" corresp="#s9:l7">verloor</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
