  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wie wil hooren een nieu <rhyme label="a" type="m">Liet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wat nu tAmsterdam is <rhyme label="a" type="m" corresp="#s1:l1">gheschiet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat sal ick u <rhyme label="b" type="f">verclaren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Van Duckdalve hoort mijn <rhyme label="a" type="m" corresp="#s1:l1">bediet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Is Banckerot <rhyme label="b" type="f" corresp="#s1:l3">ghevaren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Don Frederick had hy <rhyme label="a" type="m">uutghesandt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Tot Alckmaer in <rhyme label="a" type="m" corresp="#s2:l1">Noorthollant</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Al om die Stadt te <rhyme label="b" type="f">winnen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hy moest daer ruymen tsijnder <rhyme label="a" type="m" corresp="#s2:l1">schandt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Twas Banckeroets <rhyme label="b" type="f" corresp="#s2:l3">beghinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy sondt den Grave van <rhyme label="a" type="m">Bossou</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die sou die Geusen bringhen in <rhyme label="a" type="m" corresp="#s3:l1">rou</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In die Noorthollantsche <rhyme label="b" type="f">Steden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Hy raecte te Hoorn in die <rhyme label="a" type="m" corresp="#s3:l1">Kou</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Duytschen en Spaengiaerts <rhyme label="b" type="f" corresp="#s3:l3">mede</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Duckdalvens meyning die <rhyme label="a" type="m">faelgeert</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hier om heeft hy <rhyme label="a" type="m" corresp="#s4:l1">ghepractiseert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hoe hy met zijn <rhyme label="b" type="f">Juweelen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Uut mochte comen tot zijn <rhyme label="a" type="m" corresp="#s4:l1">begheert</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Om Banckeroet te <rhyme label="b" type="f" corresp="#s4:l3">speelen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Derthien Burghers, hoort dit <rhyme label="a" type="m">bescheyt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die hadden hem ghelt by <rhyme label="a" type="m" corresp="#s5:l1">gheleyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sy en hebben niet weder <rhyme label="b" type="f">vercreghen</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Tot Jan Perseyn, twert u <rhyme label="a" type="m" corresp="#s5:l1">gheseyt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Daer was hy thuys <rhyme label="b" type="f" corresp="#s5:l3">gheleghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Tweemael liet hy Trompetten <rhyme label="a" type="m">slaen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Soo wie betaling wilde <rhyme label="a" type="m" corresp="#s6:l1">ontfaen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Sijn Logiment stont <rhyme label="b" type="f">open</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Die derthien Burghers quamen <rhyme label="a" type="m" corresp="#s6:l1">saen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Die meest heeft hy <rhyme label="b" type="f" corresp="#s6:l3">gheroepen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die meest van allen, twort u <rhyme label="a" type="m">verclaert</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Was Jan Perseyn, Duckdalvens <rhyme label="a" type="m" corresp="#s7:l1">Waert</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Hy sprack: Segt my die <rhyme label="b" type="f">schulden</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Jan Perseyn sprack <rhyme label="a" type="m" corresp="#s7:l1">onvervaert</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Tzijn veerthien duysent <rhyme label="b" type="f" corresp="#s7:l3">gulden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die ander twaelf in corter <rhyme label="a" type="m">stont</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">De sommighe maenden twee duysent <rhyme label="a" type="m" corresp="#s8:l1">pont</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Som veel duysent ducaten <rhyme label="b" type="f">schoone</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die minst van allen, ick segt u <rhyme label="a" type="m" corresp="#s8:l1">bloot</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Quam derdehalf duysent <rhyme label="b" type="f" corresp="#s8:l3">Croonen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Duckdalve sprack, seer wel <rhyme label="a" type="m">bedacht</rhyme>:</l>
        <l id="s9:l2" met="4" type="-+">Morghen als die Clocke slaet <rhyme label="a" type="m" corresp="#s9:l1">acht</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Ick belooft u lieve <rhyme label="b" type="f">ghesellen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Het gaet nu teghen die duyster <rhyme label="a" type="m" corresp="#s9:l1">nacht</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Ick salt u morghen <rhyme label="b" type="f" corresp="#s9:l3">tellen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hoort toe wat hy des nachts <rhyme label="a" type="m">begon</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Met zijn volck tooch hy op de <rhyme label="a" type="m" corresp="#s10:l1">ron</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Hy speelde dat spel te <rhyme label="b" type="f">deghen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Hy ruymde al met de Noorde <rhyme label="a" type="m" corresp="#s10:l1">Son</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Als Banckeroetsluy <rhyme label="b" type="f" corresp="#s10:l3">pleghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Smorghens doe die Clocke hadde <rhyme label="a" type="m">acht</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Die Burghers quamen met <rhyme label="a" type="m" corresp="#s11:l1">eendracht</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Sy behoefden Kar noch <rhyme label="b" type="f">Waghen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Buydel noch Tasch haer niet en <rhyme label="a" type="m" corresp="#s11:l1">ghebrack</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Maer tghelt was goet om <rhyme label="b" type="f" corresp="#s11:l3">draghen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Sy meynden daer te ontfanghen <rhyme label="a" type="m">ghelt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Maer twert haer daer al op den Rooster <rhyme label="a" type="m" corresp="#s12:l1">ghetelt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Sy creghen nieuwe <rhyme label="b" type="f">maren</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Hoe dat duckdalve, twort u <rhyme label="a" type="m" corresp="#s12:l1">vermelt</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Na Brabant was <rhyme label="b" type="f" corresp="#s12:l3">ghevaren</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ist dat het Duckdalve niet en <rhyme label="a" type="m">faelt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Dat hy den Thienden Penninck <rhyme label="a" type="m" corresp="#s13:l1">haelt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Uut al die Geusen <rhyme label="b" type="f">Steden</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Alsdan soo sult ghy worden <rhyme label="a" type="m" corresp="#s13:l1">betaelt</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Schickt u soo lang te <rhyme label="b" type="f" corresp="#s13:l3">vreden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Oorlof, Duckdalve niet en <rhyme label="a" type="m">laect</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Al heeft hy u Buydels cael <rhyme label="a" type="m" corresp="#s14:l1">ghemaect</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Ghy moet hem dit <rhyme label="b" type="f">vergheven</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Als de Monick in u Cantooren <rhyme label="a" type="m" corresp="#s14:l1">raect</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Het salder anders <rhyme label="b" type="f" corresp="#s14:l3">cleven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
