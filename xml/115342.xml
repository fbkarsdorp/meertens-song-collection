  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Stroeyt de Aerd’ met Palme <rhyme label="a" type="f">bloemen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Vlechtet kransen <rhyme label="b" type="m">overschoon</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">ons Bruyd’gom en Bruyt <rhyme label="b" type="m" corresp="#s1:l2">ydoon</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Staen gereet om voor te <rhyme label="a" type="f" corresp="#s1:l1">komen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">‘t Blijckt de waerheyt inder <rhyme label="c" type="m">daet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Sulck de fame riep op <rhyme label="c" type="m" corresp="#s1:l5">straet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Siet sy gaen al na der <rhyme label="a" type="f">Kercken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Verselschapt na ‘slandts <rhyme label="b" type="m">manier</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Op dat alle die zijn <rhyme label="b" type="m" corresp="#s2:l2">hier</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Mochten hooren sien en <rhyme label="a" type="f" corresp="#s2:l1">mercken</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Dat sy Echten gaen den <rhyme label="c" type="m">standt</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Van des Huw’lijcx vasten <rhyme label="c" type="m" corresp="#s2:l5">band</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Laet nu nijders tongen <rhyme label="a" type="f">swijgen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Klappers die geen goed en <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En die spreken uyt <rhyme label="b" type="m" corresp="#s3:l2">vermoen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Want sy trouwe handen <rhyme label="a" type="f" corresp="#s3:l1">rijgen</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Om te vestigen den <rhyme label="c" type="m">standt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Van des Huw’lijcx vasten <rhyme label="c" type="m" corresp="#s3:l5">band</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Waerom soudet niet wel <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">‘t Welck de Liefde t’samen <rhyme label="b" type="m">voegt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daer elck ander wel <rhyme label="b" type="m" corresp="#s4:l2">genoeght</rhyme>?</l>
        <l id="s4:l4" met="4" type="+-">Waerom soudet zijn <rhyme label="a" type="f" corresp="#s4:l1">mispresen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Dat de Bruyd’gom uyt <rhyme label="c" type="m">min</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Stichtelijck sijn Bruyt haelt <rhyme label="c" type="m" corresp="#s4:l5">in</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Nu wel aen dan ghy <rhyme label="a" type="f">Genoden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Vlijd u elck ter Tafel <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Om te sitten zy aen <rhyme label="b" type="m" corresp="#s5:l2">zy</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Siet hier is gebraen <rhyme label="a" type="f" corresp="#s5:l1">gesoden</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Goeden kost en goeden <rhyme label="c" type="m">dranck</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Wy nemen ‘t alles in <rhyme label="c" type="m" corresp="#s5:l5">danck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">En speelnoots ter beyde <rhyme label="a" type="f">zijden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Schickt u om te maken <rhyme label="b" type="m">vreught</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Elck verheugt hem in der <rhyme label="b" type="m" corresp="#s6:l2">deugt</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Elck laet sture droefheyt <rhyme label="a" type="f" corresp="#s6:l1">glijden</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Die ter Bruyloft niet en <rhyme label="c" type="m">past</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Droefheyt is een onweert <rhyme label="c" type="m" corresp="#s6:l5">gast</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Prince Heer u zegen <rhyme label="a" type="f">open</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Doet over dit nieuwe <rhyme label="b" type="m">paer</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En die van hen komen <rhyme label="b" type="m" corresp="#s7:l2">naer</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Ghy al die hier zijt <rhyme label="a" type="f" corresp="#s7:l1">geroepen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Spreect met my van herten <rhyme label="c" type="m">uyt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Gheluck Bruyd’gom en Vrou <rhyme label="c" type="m" corresp="#s7:l5">Bruydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
