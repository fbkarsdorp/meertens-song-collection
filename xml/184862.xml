  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DAchtelose <rhyme label="a" type="m">Mensch</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghy die 't hier hebt nae <rhyme label="a" type="m" corresp="#s1:l1">wensch</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Waert ghy maer wel te <rhyme label="b" type="f">vreden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hoe langh, hoe langhe <rhyme label="c" type="m">doch</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Wilt ghy Gods goetheydt <rhyme label="c" type="m" corresp="#s1:l4">noch</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ondanckbaerlijck <rhyme label="b" type="f" corresp="#s1:l3">vertreden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Siet eens den Hemel <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Seer cierlijck proncken <rhyme label="a" type="m" corresp="#s2:l1">staen</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">En al sijn wonder <rhyme label="b" type="f">wercken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ist oordeel maer <rhyme label="c" type="m">ghesont</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sijn gonst sult ghy <rhyme label="c" type="m" corresp="#s2:l4">terstont</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Daer in tot u waert <rhyme label="b" type="f" corresp="#s2:l3">mercken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoort, siet, voelt, ruyckt en <rhyme label="a" type="m">smaeckt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ghy al 't gheen hier <rhyme label="a" type="m" corresp="#s3:l1">vermaeckt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">'t Volkomen schijnt <rhyme label="b" type="f">gevonden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hoe wel 't doch nerghens <rhyme label="c" type="m">leyt</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Dan daer <rhyme label="c" type="m" corresp="#s3:l4">d'onsterflijckheydt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Het sterf'lijck heel <rhyme label="b" type="f" corresp="#s3:l3">verslonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Doen ons 't Serpent met <rhyme label="a" type="m">list</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Had in haer net <rhyme label="a" type="m" corresp="#s4:l1">vertist</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Door 't al te veel <rhyme label="b" type="f">begheren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Heeft ons dees grootste <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Daer uyt ghereddert <rhyme label="c" type="m" corresp="#s4:l4">weer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Al door sich selfs <rhyme label="b" type="f" corresp="#s4:l3">verneren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Iae maeckt ons al <rhyme label="a" type="m">ghelijck</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Door sijn armoede <rhyme label="a" type="m" corresp="#s5:l1">rijck</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En doet ons door het <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Verrijsen uyt de <rhyme label="c" type="m">dood'</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Verheught in Abrams <rhyme label="c" type="m" corresp="#s5:l4">schoot</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Het Eeuwigh leven <rhyme label="b" type="f" corresp="#s5:l3">erven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Of ick doch het <rhyme label="a" type="m">ghetal</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Van Godts weldaden <rhyme label="a" type="m" corresp="#s6:l1">al</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">By een hier wilde <rhyme label="b" type="f">stellen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ick sou het gulle <rhyme label="c" type="m">sand'</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dat daer stuyft langhs de <rhyme label="c" type="m" corresp="#s6:l4">strand</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Veel eerder konnen <rhyme label="b" type="f" corresp="#s6:l3">tellen</rhyme>.</l>
      </lg>
    </lg>
  </text>
