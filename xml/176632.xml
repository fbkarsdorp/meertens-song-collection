  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Bedroeft ende <rhyme label="a" type="m">beswaert</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ben ick van herten <rhyme label="b" type="f">seere</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Over mijn vleesches <rhyme label="a" type="m" corresp="#s1:l1">aert</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die ick niet wel kan <rhyme label="b" type="f" corresp="#s1:l2">weeren</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Want ick my dickwils <rhyme label="b" type="f" corresp="#s1:l2">keere</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">O Almachtighe <rhyme label="c" type="m">Godt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Te doen nae uwe <rhyme label="b" type="f" corresp="#s1:l2">Leere</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Maer ‘t wort by wijlen <rhyme label="c" type="m" corresp="#s1:l6">spot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als ick aensie den <rhyme label="a" type="m">gangh</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van haer die nae ‘t vleesch <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo wort my alsoo <rhyme label="a" type="m" corresp="#s2:l1">bangh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ick dencke daer <rhyme label="b" type="f" corresp="#s2:l2">beneven</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Al heb ick my <rhyme label="b" type="f" corresp="#s2:l2">begheven</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Onder Christus <rhyme label="c" type="m">regaert</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Vol struyckelen en <rhyme label="b" type="f" corresp="#s2:l2">sneven</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Soo blijft noch mijnen <rhyme label="c" type="m" corresp="#s2:l6">aert</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Rebel is alle <rhyme label="a" type="m">vleysch</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Vervult met lust der <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die ‘t gheeft zijn eyghen <rhyme label="a" type="m" corresp="#s3:l1">eysch</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die is heel diep <rhyme label="b" type="f" corresp="#s3:l2">bedroghen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ick segghet sonder <rhyme label="b" type="f" corresp="#s3:l2">loghen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die hier niet nau op <rhyme label="c" type="m">past</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Nae alle zijn <rhyme label="b" type="f" corresp="#s3:l2">vermoghen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Die wort deerlijck <rhyme label="c" type="m" corresp="#s3:l6">verrast</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Bekennen moet ick <rhyme label="a" type="m">slecht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Gehelijck als Paulus <rhyme label="b" type="f">dede</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Iae met veel meerder <rhyme label="a" type="m" corresp="#s4:l1">recht</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat in mijn vleysches <rhyme label="b" type="f" corresp="#s4:l2">leden</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Gheheel niet goets woont <rhyme label="b" type="f" corresp="#s4:l2">mede</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">O Iesu Soone <rhyme label="c" type="m">Godts</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Wie sal my doch <rhyme label="b" type="f" corresp="#s4:l2">ontleden</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Van dit lichaem des <rhyme label="c" type="m" corresp="#s4:l6">doodts</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ellendich ende <rhyme label="a" type="m">kleyn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ben ick o Heer van <rhyme label="b" type="f">krachten</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">U Woort dat eyscht my <rhyme label="a" type="m" corresp="#s5:l1">reyn</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Maer ick kan niets <rhyme label="b" type="f" corresp="#s5:l2">verwachten</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Het goets, niet een <rhyme label="b" type="f" corresp="#s5:l2">ghedachten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Uyt mijn eyghen <rhyme label="c" type="m">waerdy</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Soudt ick yets goets <rhyme label="b" type="f" corresp="#s5:l2">betrachten</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">O Heer dat wercket <rhyme label="c" type="m" corresp="#s5:l6">ghy</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Roem ick my van <rhyme label="a" type="m">verstant</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Of van eenighe <rhyme label="b" type="f">daden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Beyde sotheyt en <rhyme label="a" type="m" corresp="#s6:l1">schant</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Soud’ ick meer op mijn <rhyme label="b" type="f" corresp="#s6:l2">laden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Want zondich, vele <rhyme label="b" type="f" corresp="#s6:l2">schaden</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Zijn door mijn vleesch <rhyme label="c" type="m">gheschiedt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Soud ick nae prijs noch <rhyme label="b" type="f" corresp="#s6:l2">raden</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Soo waer ick min dan <rhyme label="c" type="m" corresp="#s6:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Vol suchten ende <rhyme label="a" type="m">rou</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Ben ick tot vele <rhyme label="b" type="f">tijden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">O Godt des Hemels <rhyme label="a" type="m" corresp="#s7:l1">dou</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Die sou my wel <rhyme label="b" type="f" corresp="#s7:l2">verblijden</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Kondt ick boosen schijn <rhyme label="b" type="f" corresp="#s7:l2">mijden</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">En doen recht alst <rhyme label="c" type="m">behoort</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Het komt van veele <rhyme label="b" type="f" corresp="#s7:l2">zijden</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Dat my hier in <rhyme label="c" type="m" corresp="#s7:l6">verstoort</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Elck actie <rhyme label="a" type="m">speciael</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die my wel doet <rhyme label="b" type="f">beswaren</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Te noemen <rhyme label="a" type="m" corresp="#s8:l1">altemael</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat wil ick hier noch <rhyme label="b" type="f" corresp="#s8:l2">sparen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Godt die ons wil <rhyme label="b" type="f" corresp="#s8:l2">bewaren</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Die isset wel <rhyme label="c" type="m">bekent</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Die kan mijn <rhyme label="b" type="f" corresp="#s8:l2">weder-varen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Eens maken op een <rhyme label="c" type="m" corresp="#s8:l6">endt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">In hem wil ick <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Mijn hoop en troost nu <rhyme label="b" type="f">soecken</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Met vyerighe <rhyme label="a" type="m" corresp="#s9:l1">ghebeen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Altijt in alle <rhyme label="b" type="f" corresp="#s9:l2">hoecken</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Want die Heylighe <rhyme label="b" type="f" corresp="#s9:l2">Boecken</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Doen ons hier toe <rhyme label="c" type="m">vermaen</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">In alle ons <rhyme label="b" type="f" corresp="#s9:l2">versoecken</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Tot hem alleen te <rhyme label="c" type="m" corresp="#s9:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Komt al die zijt <rhyme label="a" type="m">belaen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Met zonden <rhyme label="b" type="f">overvloedich</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Ick sal u wel <rhyme label="a" type="m" corresp="#s10:l1">ontfaen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Spreeckt Christus, ick ben <rhyme label="b" type="f" corresp="#s10:l2">goedich</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Dus leert van my <rhyme label="b" type="f" corresp="#s10:l2">ootmoedich</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Te zijn met herten <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Ende leeft heel <rhyme label="b" type="f" corresp="#s10:l2">sachtmoedich</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Soo vint u ziele <rhyme label="c" type="m" corresp="#s10:l6">rust</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Een Sondaer ben ick <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Mijn hert dat is <rhyme label="b" type="f">verslaghen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Mijn moet die leyt ter <rhyme label="a" type="m" corresp="#s11:l1">neer</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Om u recht te <rhyme label="b" type="f" corresp="#s11:l2">behaghen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Maer bidden ende <rhyme label="b" type="f" corresp="#s11:l2">klaghen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Moet ick en latent <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Die aen u niet <rhyme label="b" type="f" corresp="#s11:l2">versaghen</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Verlost ghy van ‘t <rhyme label="c" type="m" corresp="#s11:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Door bidden sonder <rhyme label="a" type="m">ent</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En dat met vast <rhyme label="b" type="f">betrouwen</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Wert’s Rechters hert <rhyme label="a" type="m" corresp="#s12:l1">ghewent</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Al totter <rhyme label="b" type="f" corresp="#s12:l2">Wedu-Vrouwen</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Al hadt hy gheen <rhyme label="b" type="f" corresp="#s12:l2">berouwen</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Tot Godt voor zijn <rhyme label="c" type="m">misdaet</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Noch voor gheen menschen <rhyme label="b" type="f" corresp="#s12:l2">schouwen</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Nochtans hy haer <rhyme label="c" type="m" corresp="#s12:l6">ontslaet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Oock die daer badt om <rhyme label="a" type="m">Broodt</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Al wordt hy <rhyme label="b" type="f">af-ghesleghen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Hy klaeghd by nacht zijn <rhyme label="a" type="m" corresp="#s13:l1">noodt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">En stont aen als <rhyme label="b" type="f" corresp="#s13:l2">stoffreghen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Al wast vrientschap gheen <rhyme label="b" type="f" corresp="#s13:l2">deghen</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Door onschamel <rhyme label="c" type="m">ghelaet</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Heeft hy zijn beedt <rhyme label="b" type="f" corresp="#s13:l2">verkreghen</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Sijn gast die wert <rhyme label="c" type="m" corresp="#s13:l6">versaet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Komter wel soo een <rhyme label="a" type="m">Vaer</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Als hem sijn Sone <rhyme label="b" type="f">bede</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Om Broodt off goede <rhyme label="a" type="m" corresp="#s14:l1">waer</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Die hem een Steen dan <rhyme label="b" type="f" corresp="#s14:l2">dede</rhyme>?</l>
        <l id="s14:l5" met="3" type="-+">Kont ghy wat goets doen <rhyme label="b" type="f" corresp="#s14:l2">mede</rhyme>:</l>
        <l id="s14:l6" met="3" type="-+">Spreeckt Christus, en zijt <rhyme label="c" type="m">boos</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Sou Godt dan niet sijn <rhyme label="b" type="f" corresp="#s14:l2">vrede</rhyme></l>
        <l id="s14:l8" met="3" type="-+">Gheven die bidt <rhyme label="c" type="m" corresp="#s14:l6">altoos</rhyme>?</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Hierom door troost der <rhyme label="a" type="m">Schrift</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Ghelooff en Hope noch <rhyme label="b" type="f">duyren</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">En want hier niemant <rhyme label="a" type="m" corresp="#s15:l1">blijft</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Dan gheheel korter <rhyme label="b" type="f" corresp="#s15:l2">uyren</rhyme>:</l>
        <l id="s15:l5" met="3" type="-+">En komen niet <rhyme label="b" type="f" corresp="#s15:l2">uyt-vuyren</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Door ons kracht, baet of <rhyme label="c" type="m">schaet</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">Soo sal ons Godt <rhyme label="b" type="f" corresp="#s15:l2">toe-stuyren</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Rijckelijck sijn <rhyme label="c" type="m" corresp="#s15:l6">ghenaet</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Tot Godt door Christum <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Wil ick alleene <rhyme label="b" type="f">vluchten</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Tot den ghenaden <rhyme label="a" type="m" corresp="#s16:l1">throon</rhyme>:</l>
        <l id="s16:l4" met="3" type="-+">Met smaken en met <rhyme label="b" type="f" corresp="#s16:l2">suchten</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Schuwende ‘s Werelts <rhyme label="b" type="f" corresp="#s16:l2">kluchten</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Dit is nu mijn <rhyme label="c" type="m">propoost</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Gaen daerom qua <rhyme label="b" type="f" corresp="#s16:l2">gheruchten</rhyme>,</l>
        <l id="s16:l8" met="3" type="-+">Des ben ick wel <rhyme label="c" type="m" corresp="#s16:l6">ghetroost</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Eer ick noch sluyt het <rhyme label="a" type="m">lest</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Die door den Gheest <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">En al die staen na ‘t <rhyme label="a" type="m" corresp="#s17:l1">best</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Wilt my nu helpen <rhyme label="b" type="f" corresp="#s17:l2">strijden</rhyme>:</l>
        <l id="s17:l5" met="3" type="-+">Met bidden t’allen <rhyme label="b" type="f" corresp="#s17:l2">tijden</rhyme>,</l>
        <l id="s17:l6" met="3" type="-+">Voor my tot onsen <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s17:l7" met="3" type="-+">Dat hy my wil <rhyme label="b" type="f" corresp="#s17:l2">bevrijden</rhyme>,</l>
        <l id="s17:l8" met="3" type="-+">Voor ‘t quaet, bidt ick u <rhyme label="c" type="m" corresp="#s17:l6">seer</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Recht ende slecht <rhyme label="a" type="m">behoedt</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">U knecht in al ‘t <rhyme label="b" type="f">benouwen</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Bidt ick u Prince <rhyme label="a" type="m" corresp="#s18:l1">goet</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Met al die van ‘t quaet <rhyme label="b" type="f" corresp="#s18:l2">rouwen</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">Op dat wy dan <rhyme label="b" type="f" corresp="#s18:l2">aenschouwen</rhyme>,</l>
        <l id="s18:l6" met="3" type="-+">U ghenadigh <rhyme label="c" type="m">aenschijn</rhyme>,</l>
        <l id="s18:l7" met="3" type="-+">Als ghy Oordeel sult <rhyme label="b" type="f" corresp="#s18:l2">houwen</rhyme>,</l>
        <l id="s18:l8" met="3" type="-+">In het leste <rhyme label="c" type="m" corresp="#s18:l6">termijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
