      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEere, goe ghetrouwe <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Ick kom <rhyme label="a" type="f" corresp="#s1:l1">nader</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Voor u hooghe <rhyme label="b" type="m">Majesteyt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Wilt doch achten op mijn <rhyme label="c" type="f">reden</rhyme></l>
        <l id="s1:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s1:l4">Ghebeden</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Na u groote <rhyme label="b" type="m" corresp="#s1:l3">goedigheyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Geef dat ick, na u <rhyme label="a" type="f">Gheboden</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Gheen <rhyme label="a" type="f" corresp="#s2:l1">Afgoden</rhyme></l>
        <l id="s2:l3" met="4" type="+-">My op aerden maecken <rhyme label="b" type="m">laet</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Maer dat ick mach gaen ter <rhyme label="c" type="f">deghen</rhyme></l>
        <l id="s2:l5" met="2" type="+-">In u <rhyme label="c" type="f" corresp="#s2:l4">weghen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En den valschen Godts-dienst <rhyme label="b" type="m" corresp="#s2:l3">haet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hoed mijn tongh voor <rhyme label="a" type="f">leugen-spreken</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Valsche <rhyme label="a" type="f" corresp="#s3:l1">treken</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die ghy hooghelijck <rhyme label="b" type="m">verbiet</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Want de mondt geneyght tot <rhyme label="c" type="f">lieghen</rhyme></l>
        <l id="s3:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s3:l4">bedrieghen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Baret eeuwigh <rhyme label="b" type="m" corresp="#s3:l3">Ziel-verdriet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ghy en wilt oock in dit <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s4:l2" met="2" type="+-">My niet <rhyme label="a" type="f" corresp="#s4:l1">gheven</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Al te groot of <rhyme label="b" type="m">kleyn-beslagh</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Maer verleen my <rhyme label="c" type="f">middelmatigh</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Dat ick <rhyme label="c" type="f" corresp="#s4:l4">statich</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En met eeren, leven <rhyme label="b" type="m" corresp="#s4:l3">mach</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Grooten rijckdom maeckt <rhyme label="a" type="f">hooghmoedigh</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">
          <rhyme label="a" type="f" corresp="#s5:l1">Overvloedigh</rhyme>
        </l>
        <l id="s5:l3" met="4" type="+-">Ick van u gantsch niet <rhyme label="b" type="m">begeer</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Anders mocht ick my <rhyme label="c" type="f">op-maecken</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">V <rhyme label="c" type="f" corresp="#s5:l4">versaecken</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Segghende: Wie is de <rhyme label="b" type="m" corresp="#s5:l3">Heer</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ghy en wilt my oock niet <rhyme label="a" type="f">laten</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Boven <rhyme label="a" type="f" corresp="#s6:l1">maten</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Met armoede zijn <rhyme label="b" type="m">besocht</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Anders mocht ick zijn <rhyme label="c" type="f">ghenegen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Dinghen <rhyme label="c" type="f" corresp="#s6:l4">plegen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Die ick noyt mijn leven <rhyme label="b" type="m" corresp="#s6:l3">docht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ick mocht teghen u <rhyme label="a" type="f">beveelen</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Lopen <rhyme label="a" type="f" corresp="#s7:l1">steelen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Loeren op mijns naesten <rhyme label="b" type="m">goedt</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Daerom laet my, Godt der <rhyme label="c" type="f">vromen</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Doch niet <rhyme label="c" type="f" corresp="#s7:l4">komen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Tot ghebreck, noch <rhyme label="b" type="m" corresp="#s7:l3">overvloedt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Want armoede, swaer om <rhyme label="a" type="f">daghen</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Maeckt <rhyme label="a" type="f" corresp="#s8:l1">verslaghen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Overvloedt verheft <rhyme label="b" type="m">ghewis</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">Wilt my dan alleene <rhyme label="c" type="f">schencken</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s8:l4">bedencken</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Met soo veel my noodigh <rhyme label="b" type="m" corresp="#s8:l3">is</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Hierom bidd' ick u, o <rhyme label="a" type="f">Heere</rhyme>!</l>
        <l id="s9:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s9:l1">begheere</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Dat ghy my de gunste <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Dat ick dit van u <rhyme label="c" type="f">verwerve</rhyme></l>
        <l id="s9:l5" met="2" type="+-">Eer ick <rhyme label="c" type="f" corresp="#s9:l4">sterve</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Daer ick een-mael henen <rhyme label="b" type="m" corresp="#s9:l3">moet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
