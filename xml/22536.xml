    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Mijn Lyef is schoen ende <rhyme label="a" type="m">suverlijck</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Seer eedel, machtich ende <rhyme label="a" type="m" corresp="#s1:l1">rijck</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">In der harten kan Hi <rhyme label="b" type="f">jubeleren</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ende in den hoechsten <rhyme label="c" type="m">omganck</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">In den mont soe kan Hy <rhyme label="b" type="f" corresp="#s1:l3">discantteren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy is die Heer daert al aen <rhyme label="a" type="m">staet</rhyme>;</l>
        <l id="s2:l2" met="4" type="-+">Hi is mijn hoep, mijn <rhyme label="a" type="m" corresp="#s2:l1">toevaerlaet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In allen mijnen <rhyme label="b" type="f">lijden</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Hi is die alresoetste <rhyme label="c" type="m">troest</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Hi kan die harten <rhyme label="b" type="f" corresp="#s2:l3">verblyden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och, als die siel van henen <rhyme label="a" type="m">vaert</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ende sy dit dael daer tranen laet <rhyme label="a" type="m" corresp="#s3:l1">staen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ende sy dan coemt hier <rhyme label="b" type="f">boven</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Al daer sy niet versaedt en mach <rhyme label="c" type="m">worden</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Van dancken ende van <rhyme label="b" type="f" corresp="#s3:l3">loven</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dan staet die Bruoedegom voer die <rhyme label="a" type="m">poert</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dan hoert die bruyt dat soete <rhyme label="a" type="m" corresp="#s4:l1">woert</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">'Coemt', seyt Hi, 'Mijn <rhyme label="b" type="f">vriendinne</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat ju soe langhe vaerborghen <rhyme label="c" type="m">was</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dat selt ghi nu <rhyme label="b" type="f" corresp="#s4:l3">bekennen</rhyme>!'</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dan wort die schoen bruyt <rhyme label="a" type="m">ingheleit</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Een alle dinghen is daer <rhyme label="a" type="m" corresp="#s5:l1">bereyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Meen sel daer verscap <rhyme label="b" type="f">beghinnen</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Heer Jhesus sel selvaer die dienre <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat doet Sijn groote <rhyme label="b" type="f" corresp="#s5:l3">minne</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Och, sel men daer niet vrolijc <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Daer Jhesus selver schent die <rhyme label="a" type="m" corresp="#s6:l1">wijn</rhyme>?</l>
        <l id="s6:l3" met="3" type="-+">Uut schoen vergulde <rhyme label="b" type="f">scalen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Uut een fonteyn al sonder <rhyme label="c" type="m">gront</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Men mach haer ghenoech uut <rhyme label="b" type="f" corresp="#s6:l3">halen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy is dat Broet, Hi is die <rhyme label="a" type="m">Wijn</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Hi is verdriver daer hartse <rhyme label="a" type="m" corresp="#s7:l1">pijn</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Hy is oeck mijn <rhyme label="b" type="f">glori</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Hy is die Conninc van <rhyme label="c" type="m">Yserhel</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Den grooten Heer hier <rhyme label="b" type="f" corresp="#s7:l3">boven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
