    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAt maeckt Urania aen 't <rhyme label="a" type="f">treuren</rhyme>?</l>
        <l id="s1:l2" met="4" type="-+">Weest, weest gegroet, mijn waerste <rhyme label="b" type="m">sus</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ick kom van by des Aemstels <rhyme label="a" type="f" corresp="#s1:l1">deuren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En groet u met een soete <rhyme label="b" type="m" corresp="#s1:l2">kus</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat saegdy daer ons doch voor <rhyme label="a" type="f">wonder</rhyme></l>
        <l id="s2:l2" met="4" type="-+">In so weeldighe rijcke <rhyme label="b" type="m">stadt</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Waer den handel het al houd <rhyme label="a" type="f" corresp="#s2:l1">onder</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Wat PoÃ«sy daer voormaels <rhyme label="b" type="m" corresp="#s2:l2">hadt</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat, niet! dan logh en drogh <rhyme label="a" type="f">regeeren</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En alles wat men dencken <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat de handelaers liefst' <rhyme label="a" type="f" corresp="#s3:l1">begeeren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Daer haer gewin en schat komt <rhyme label="b" type="m" corresp="#s3:l2">van</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hoe gaet het met ons <rhyme label="a" type="f">rymerijen</rhyme>?</l>
        <l id="s4:l2" met="4" type="-+">Och! slechtelijck en gantsch <rhyme label="b" type="m">veracht</rhyme>!</l>
        <l id="s4:l3" met="4" type="-+">Ick hebber nochtans die my <rhyme label="a" type="f" corresp="#s4:l1">vrijen</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Ia weynigh, en die noch <rhyme label="b" type="m" corresp="#s4:l2">verdacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het schijnt men wiltse heel wt <rhyme label="a" type="f">roeyen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Die u, of my besinnen <rhyme label="b" type="m">maer</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Wat plach 't geestlijck rym te <rhyme label="a" type="f" corresp="#s5:l1">bloeyen</rhyme>!</l>
        <l id="s5:l4" met="4" type="-+">Nu is die heel vergeten <rhyme label="b" type="m" corresp="#s5:l2">daer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Waer sijt ghy o Traghedy <rhyme label="a" type="f">bloedigh</rhyme>?</l>
        <l id="s6:l2" met="4" type="-+">Waer is, waer is, dyn oude <rhyme label="b" type="m">eer</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">Waer sijt ghy oock Comedy <rhyme label="a" type="f" corresp="#s6:l1">moedigh</rhyme>?</l>
        <l id="s6:l4" met="4" type="-+">Ach! ick en sie u nerghens <rhyme label="b" type="m" corresp="#s6:l2">meer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ick heb myn ampt aldaer gaen <rhyme label="a" type="f">sluyten</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En stack myn hand in 't grundel <rhyme label="b" type="m">gat</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">(Den God Apollo bleeffer <rhyme label="a" type="f" corresp="#s7:l1">buyten</rhyme>)</l>
        <l id="s7:l4" met="4" type="-+">Mijn vinger droop van 't gulde <rhyme label="b" type="m" corresp="#s7:l2">nat</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ick wil het selfde daer <rhyme label="a" type="f">beginnen</rhyme>:</l>
        <l id="s8:l2" met="4" type="-+">Gheeft, gheeft, Apollo my <rhyme label="b" type="m">verlof</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En rymt dan rymers dol van <rhyme label="a" type="f" corresp="#s8:l1">sinnen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Maer voor al neemt van my geen <rhyme label="b" type="m" corresp="#s8:l2">stof</rhyme>.</l>
      </lg>
    </lg>
  </text>
