    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">V Mijne siele wilt <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Vwen beminden Iesu <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hoe hy uytcomt met groot <rhyme label="a" type="f" corresp="#s1:l1">benouwen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Siet hoe hem is uyt-parst sijn <rhyme label="b" type="m" corresp="#s1:l2">bloedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Van't geesselen seer <rhyme label="a" type="f">jammerlijcke</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En op sijn hooft een doorne <rhyme label="b" type="m">kroon</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sijn handen sijn te <rhyme label="a" type="f" corresp="#s2:l1">wreedelijcken</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Ghebonden, en soo stelt ten <rhyme label="b" type="m" corresp="#s2:l2">toon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">My dunckt ick sien u staen o <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s3:l2" met="4" type="-+">En hoor't gheroep der Ioden <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Cruys hem, Cruyst hem, met groot <rhyme label="a" type="f" corresp="#s3:l1">oneere</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Doet hem wech uyt ons ooghen <rhyme label="b" type="m" corresp="#s3:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Waer sijt ghy o Maria <rhyme label="a" type="f">pure</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Bedroefde Moeder hoort ghy <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hoe dat de Ruyters deser <rhyme label="a" type="f" corresp="#s4:l1">ure</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Wt rijden op haer Paerden <rhyme label="b" type="m" corresp="#s4:l2">snel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoor hoe sy blaesen langhs de <rhyme label="a" type="f">straten</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Op haer Trompetten met <rhyme label="b" type="m">ghedruys</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">S'hebben u Soone die sy <rhyme label="a" type="f" corresp="#s5:l1">haten</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Gheladen met een sware <rhyme label="b" type="m" corresp="#s5:l2">Cruys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nu mach hy wel met rechte <rhyme label="a" type="f">seggen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ick ben een worrem maer geen <rhyme label="b" type="m">mensch</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Want hy blijft moede neder <rhyme label="a" type="f" corresp="#s6:l1">legghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En wordt gheslaghen nae haer <rhyme label="b" type="m" corresp="#s6:l2">wensch</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Soo dat hy deerelijck moet <rhyme label="a" type="f">kruypen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Vermoeyt, nae Calvarien <rhyme label="b" type="m">heen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Daer sy spottende neder <rhyme label="a" type="f" corresp="#s7:l1">stuppen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En setten hem op eenen <rhyme label="b" type="m" corresp="#s7:l2">steen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ach hoe bedruckt, ende <rhyme label="a" type="f">bebloedigh</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Sit hy daer op Golgathas <rhyme label="b" type="m">klip</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Ghekleet als een arm mensch <rhyme label="a" type="f" corresp="#s8:l1">weemoedigh</rhyme></l>
        <l id="s8:l4" met="4" type="-+">In een verscheurden Purper <rhyme label="b" type="m" corresp="#s8:l2">stip</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Het ijsselijck ghekrangh der <rhyme label="a" type="f">Ioden</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Ghedoocht niet dat sijn Moeder <rhyme label="b" type="m">hem</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Eens spreken magh, maer hem te <rhyme label="a" type="f" corresp="#s9:l1">dooden</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Roepen sy in ghemeene <rhyme label="b" type="m" corresp="#s9:l2">stem</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Och dat ick soo veel droeve <rhyme label="a" type="f">tranen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Kond storten, als ghy doet u <rhyme label="b" type="m">bloedt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Heere ick sou mijn hert <rhyme label="a" type="f" corresp="#s10:l1">vermanen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Dat sy uytliet een grooten <rhyme label="b" type="m" corresp="#s10:l2">vloedt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Mochtans ick sal u niet <rhyme label="a" type="f">verlaten</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Maer sal u met een droef <rhyme label="b" type="m">ghesucht</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Op't Cruys sien nag'len, door de <rhyme label="a" type="f" corresp="#s11:l1">gaten</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Die sy dus booren, met <rhyme label="b" type="m" corresp="#s11:l2">gherucht</rhyme>.</l>
      </lg>
    </lg>
  </text>
