    <melody>Ik lijd in het hart pijn ongewoon</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="1" type="-+">SOeckt <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met Francis te zijn <rhyme label="a" type="m" corresp="#s1:l1">bly</rhyme></l>
        <l id="s1:l3" met="2" type="-+">In 's Hemels <rhyme label="b" type="f">hoven</rhyme>?</l>
        <l id="s1:l4" met="2" type="-+">Houdt Roomsch <rhyme label="b" type="f" corresp="#s1:l3">gelooven</rhyme>;</l>
        <l id="s1:l5" met="5" type="-+">Verduldigh zijt van goedt en bloedt <rhyme label="b" type="f" corresp="#s1:l3">verschove</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Zijt reyn, en arm van <rhyme label="c" type="m">geest</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">In deughden minst noch <rhyme label="c" type="m" corresp="#s1:l6">meest</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Moet ghy <rhyme label="b" type="f" corresp="#s1:l3">verdoove</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="1" type="-+">Om <rhyme label="a" type="m">hoogh</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En Godt houdt 't hart en <rhyme label="a" type="m" corresp="#s2:l1">oogh</rhyme>.</l>
        <l id="s2:l3" met="2" type="-+">Sonden en <rhyme label="b" type="f">staten</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Met 't aerts wilt <rhyme label="b" type="f" corresp="#s2:l3">haten</rhyme>.</l>
        <l id="s2:l5" met="5" type="-+">Raeckt, begeert noch doet, dat u sal <rhyme label="b" type="f" corresp="#s2:l3">verlaten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Soeckt alleen, ende <rhyme label="c" type="m">doet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Dat als ghy scheyde <rhyme label="c" type="m" corresp="#s2:l6">moet</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Eeuwigh sal <rhyme label="b" type="f" corresp="#s2:l3">baten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="1" type="-+">Goods <rhyme label="a" type="m">huys</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Bemint, en 't Heyligh <rhyme label="a" type="m" corresp="#s3:l1">kruys</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Al 't quaet wilt <rhyme label="b" type="f">schouwe</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Wilt Jesus <rhyme label="b" type="f" corresp="#s3:l3">rouwe</rhyme></l>
        <l id="s3:l5" met="5" type="-+">Pijn, en doot met mede-lijde <rhyme label="b" type="f" corresp="#s3:l3">her-knouwen</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Godts roep niet <rhyme label="c" type="m">weder-staet</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">Leeft heyligh nae u <rhyme label="c" type="m" corresp="#s3:l6">staet</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Sonder <rhyme label="b" type="f" corresp="#s3:l3">verflouwe</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="1" type="-+">O <rhyme label="a" type="m">Zee</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vol deughden <rhyme label="a" type="m" corresp="#s4:l1">Francisce</rhyme>!</l>
        <l id="s4:l3" met="2" type="-+">Wilt van mijn <rhyme label="b" type="f">weeren</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Gramschap des <rhyme label="b" type="f" corresp="#s4:l3">Heeren</rhyme></l>
        <l id="s4:l5" met="5" type="-+">Door uw' gebeden; dat niet mijn mach <rhyme label="b" type="f" corresp="#s4:l3">deeren</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat niet mijn hart <rhyme label="c" type="m">verleyt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Van Godt noch <rhyme label="c" type="m" corresp="#s4:l6">saligheyt</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Noch Godes <rhyme label="b" type="f" corresp="#s4:l3">eeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="1" type="-+">Met <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sint' Francisce; wilt <rhyme label="a" type="m" corresp="#s5:l1">zijn</rhyme></l>
        <l id="s5:l3" met="2" type="-+">By nacht en <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">In strijdt en <rhyme label="b" type="f" corresp="#s5:l3">plagen</rhyme>.</l>
        <l id="s5:l5" met="5" type="-+">Verkrijght dat ick Godt en al noyt <rhyme label="b" type="f" corresp="#s5:l3">mishage</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Voert mijn, O voerman <rhyme label="c" type="m">wijs</rhyme>!</l>
        <l id="s5:l7" met="3" type="-+">Na 't Hemels <rhyme label="c" type="m" corresp="#s5:l6">Paradijs</rhyme>.</l>
        <l id="s5:l8" met="2" type="-+">Met s' Hemels <rhyme label="b" type="f" corresp="#s5:l3">wagen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="1" type="-+">U <rhyme label="a" type="m">Smart</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Druckt Iesu! in mijn <rhyme label="a" type="m" corresp="#s6:l1">hart</rhyme>.</l>
        <l id="s6:l3" met="2" type="-+">Geeft my <rhyme label="b" type="f">genade</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Dat ick de <rhyme label="b" type="f" corresp="#s6:l3">pade</rhyme></l>
        <l id="s6:l5" met="5" type="-+">Van Franciscus mach volgen, en uw' <rhyme label="b" type="f" corresp="#s6:l3">raden</rhyme></l>
        <l id="s6:l6" met="3" type="-+">In alles weest mijn <rhyme label="c" type="m">al</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Wilt mijn in 's Hemels <rhyme label="c" type="m" corresp="#s6:l6">wal</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Eeuwigh <rhyme label="b" type="f" corresp="#s6:l3">versade</rhyme>.</l>
      </lg>
    </lg>
  </text>
