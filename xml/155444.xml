    <melody>Iets moet ik u Laura vragen</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DOe hem Paulus had <rhyme label="a" type="f">begeven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Om in Godes vrees te <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Laed hy op de Joodsche <rhyme label="b" type="m">haet</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die in toorn [...] hem <rhyme label="c" type="f">vervolgen</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Trachten om hem te <rhyme label="c" type="f" corresp="#s1:l4">vervolgen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Met haer quade raedt, en <rhyme label="b" type="m" corresp="#s1:l3">daedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Packt u toe, Damascus <rhyme label="a" type="f">Poorten</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Was 't geroep: En al de <rhyme label="a" type="f" corresp="#s2:l1">soorten</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Der bloet-honden (seer <rhyme label="b" type="m">verwoet</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Gelijck Leeuwen dor en <rhyme label="c" type="f">mager</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Aengehitst door d' helsche <rhyme label="c" type="f" corresp="#s2:l4">Jager</rhyme>,)</l>
        <l id="s2:l6" met="4" type="+-">Hijghden seer na Pauli <rhyme label="b" type="m" corresp="#s2:l3">bloedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Paulus hier in 't nau <rhyme label="a" type="f">benepen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Heeft sijn heyligh breyn <rhyme label="a" type="f" corresp="#s3:l1">geslepen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Om een middel uyt te <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Hoe hy door die ringh van <rhyme label="c" type="f">honden</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Die verhongert om hem <rhyme label="c" type="f" corresp="#s3:l4">stonden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Mochte na een vry-plaets <rhyme label="b" type="m" corresp="#s3:l3">vliÃªn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Soo haest Luna met sijn <rhyme label="a" type="f">duys'lingh</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Stild' het heesche <rhyme label="a" type="f" corresp="#s4:l1">Moort-gesuys'lingh</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Soo is Paulus in een <rhyme label="b" type="m">Korf</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Van de Mueren <rhyme label="c" type="f">af-gelaten</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En gingh na Damascus <rhyme label="c" type="f" corresp="#s4:l4">straten</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Daer hy gunst en lust <rhyme label="b" type="m" corresp="#s4:l3">verworf</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Hier sien wy de boose <rhyme label="a" type="f">Wereldt</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Schoon met schijn-vermaeck <rhyme label="a" type="f" corresp="#s5:l1">beperelt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Nochtans als een hongh'righ <rhyme label="b" type="m">Beest</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Van den Sathan <rhyme label="c" type="f">aengeblasen</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Grusaem na die gene <rhyme label="c" type="f" corresp="#s5:l4">rasen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Die den Heer van herten <rhyme label="b" type="m" corresp="#s5:l3">vreest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Al de krachten der <rhyme label="a" type="f">Tyrannen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Worden alhier <rhyme label="a" type="f" corresp="#s6:l1">aen-gespannen</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Al 't inwoonend sondigh <rhyme label="b" type="m">Erf</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">Al des Sathans list is <rhyme label="c" type="f">doende</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Om Godts kind'ren en <rhyme label="c" type="f" corresp="#s6:l4">versoenden</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Neer te storten in 't <rhyme label="b" type="m" corresp="#s6:l3">verderf</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dese macht doet ons <rhyme label="a" type="f">verschricken</rhyme>;</l>
        <l id="s7:l2" met="4" type="+-">Nochtans moetwe door de <rhyme label="a" type="f" corresp="#s7:l1">stricken</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Van de Sathan sluypen <rhyme label="b" type="m">heen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Om ons selven te <rhyme label="c" type="f">onttrecken</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Van de Wereldt, die met <rhyme label="c" type="f" corresp="#s7:l4">vlecken</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Ons bevuylt, en doodt met <rhyme label="b" type="m" corresp="#s7:l3">een</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">En gespertelt door <rhyme label="a" type="f">ellenden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Onse gangh ten Hemel <rhyme label="a" type="f" corresp="#s8:l1">wenden</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Na het nieuw <rhyme label="b" type="m">Jerusalem</rhyme>;</l>
        <l id="s8:l4" met="4" type="+-">Daer gheen vyandt Pijl kan <rhyme label="c" type="f">schieten</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Noch gheen oogh een traen kan <rhyme label="c" type="f" corresp="#s8:l4">gieten</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Maer God lof-singht yder <rhyme label="b" type="m" corresp="#s8:l3">Stem</rhyme>.</l>
      </lg>
    </lg>
  </text>
