<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>182564</id>
    <date>
      <year-start>1800</year-start>
      <year-end>1800</year-end>
    </date>
    <tags/>
    <melody>Van de handel</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Schept goede moed gy <rhyme label="a" type="m">Burgery</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">In Stad en Dorp 't alle <rhyme label="a" type="m" corresp="#s1:l1">zy</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die lang hebben <rhyme label="b" type="m">getragt</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Ja by den dag en <rhyme label="b" type="m" corresp="#s1:l3">nagt</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Naar de rust en <rhyme label="c" type="f">Vrede</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">t Geen wy verhope dat in korte <rhyme label="d" type="m">tyd</rhyme></l>
        <l id="s1:l7" met="5" type="-+">de langeduurde droeve <rhyme label="d" type="m" corresp="#s1:l6">oorlogstryd</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Zal neemen gaan een <rhyme label="e" type="m">end</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Tot ons <rhyme label="e" type="m" corresp="#s1:l8">contentement</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">En troost in ons <rhyme label="e" type="m" corresp="#s1:l8">elend</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want ziet 't is ieder zyne <rhyme label="a" type="m">wensch</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En ook de roep van menig <rhyme label="a" type="m" corresp="#s2:l1">mensch</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Komt men hier ofte <rhyme label="b" type="m">daar</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Elk tragt 'er <rhyme label="b" type="m" corresp="#s2:l3">naar</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">In verscheiden <rhyme label="c" type="f">Landen</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Ider die wenscht om eene goede <rhyme label="d" type="m">vrê</rhyme></l>
        <l id="s2:l7" met="5" type="-+">De moet vergaat zo wel in dorp als in <rhyme label="d" type="m" corresp="#s2:l6">stê</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Want als 'er is geen <rhyme label="e" type="m">rust</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En is 'er geen <rhyme label="e" type="m" corresp="#s2:l8">lust</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">En menig Land <rhyme label="e" type="m" corresp="#s2:l8">verwust</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hoe zullen al de <rhyme label="a" type="m">Burgery</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Wezen content met herten <rhyme label="a" type="m" corresp="#s3:l1">bly</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ja heel het aardsche <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Als men hooren <rhyme label="b" type="m" corresp="#s3:l3">zal</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Den algemeenen <rhyme label="c" type="f">Vrede</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Hoe zal verheugd zyn Boer en Ak <rhyme label="d" type="m">kerman</rhyme>,</l>
        <l id="s3:l7" met="5" type="-+">Als hy 't trompet van vrede hore <rhyme label="d" type="m" corresp="#s3:l6">kan</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Hy die zo lange <rhyme label="e" type="m">tyd</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Leefden in <rhyme label="e" type="m" corresp="#s3:l8">benaauwtheid</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Door dezen <rhyme label="e" type="m" corresp="#s3:l8">Oorlogsstryd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hoe menig hert heel droef <rhyme label="a" type="m">geperst</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Zou worde door de vrugt <rhyme label="a" type="m" corresp="#s4:l1">ververst</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Zoo menig <rhyme label="b" type="m">Ambachsman</rhyme>.</l>
        <l id="s4:l4" met="3" type="+-">Niet meer leven <rhyme label="b" type="m" corresp="#s4:l3">kan</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Hy tragt ook naar <rhyme label="c" type="f">Vrede</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Hy is zyn werk en couragie <rhyme label="d" type="m">kwyt</rhyme>,</l>
        <l id="s4:l7" met="5" type="-+">Dat blyft stroppele door de <rhyme label="d" type="m" corresp="#s4:l6">Oorlogtyd</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Die reizen over 't <rhyme label="e" type="m">Land</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Vragen naar <rhyme label="e" type="m" corresp="#s4:l8">advenant</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Den Vreden en <rhyme label="e" type="m" corresp="#s4:l8">welstand</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Menig Soldaat myn hert en <rhyme label="a" type="m">lust</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Is om den Vreden en de <rhyme label="a" type="m" corresp="#s5:l1">rust</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hy die zo menig <rhyme label="b" type="m">jaar</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">In een droef <rhyme label="b" type="m" corresp="#s5:l3">gevaar</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Nu heeft moeten <rhyme label="c" type="f">leven</rhyme>.</l>
        <l id="s5:l6" met="5" type="-+">Hy is begeerig met al zyn <rhyme label="d" type="m">verstand</rhyme></l>
        <l id="s5:l7" met="5" type="-+">Eens te gerake in zyn <rhyme label="d" type="m" corresp="#s5:l6">Vaderland</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Waar hy by dag en <rhyme label="e" type="m">nagt</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Zyn dood maar en <rhyme label="e" type="m" corresp="#s5:l8">verwagt</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Hy ook naar Vrede <rhyme label="e" type="m" corresp="#s5:l8">tragt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ja ieder een met dezen <rhyme label="a" type="m">tyd</rhyme>.</l>
        <l id="s6:l2" met="4" type="-+">Zou wezen om de Vrêe <rhyme label="a" type="m" corresp="#s6:l1">verblyd</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Het geen wy hopen <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Dat 't geschieden <rhyme label="b" type="m" corresp="#s6:l3">zal</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">Naar onze <rhyme label="c" type="f">verlangen</rhyme>,</l>
        <l id="s6:l6" met="5" type="-+">O zoete Vrede gy zyt lang <rhyme label="d" type="m">verwagt</rhyme>,</l>
        <l id="s6:l7" met="5" type="-+">Niet zonder reden ieder u <rhyme label="d" type="m" corresp="#s6:l6">verwagt</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Vertoont u het is <rhyme label="e" type="m">tyd</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Om dat wy zyn <rhyme label="e" type="m" corresp="#s6:l8">bevryd</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Van Oorlog en van <rhyme label="e" type="m" corresp="#s6:l8">stryd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
