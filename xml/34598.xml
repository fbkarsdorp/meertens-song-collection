  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">AL de Gispers van de <rhyme label="a" type="f">stede</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">'k Meyn' de Ridders van den <rhyme label="b" type="m">dis</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Waren, nu maer korts <rhyme label="a" type="f" corresp="#s1:l1">gheleden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">T samen daer-men vrolyck <rhyme label="b" type="m" corresp="#s1:l2">is</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Want-men eenen soud' gaen <rhyme label="a" type="f" corresp="#s1:l1">smeden</rhyme></l>
        <l id="s1:l6" met="4" type="+-">In de Beste-vaders <rhyme label="b" type="m" corresp="#s1:l2">smis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Was een Koop-man die vael <rhyme label="a" type="f">Hespen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">En Sausissen hadd' <rhyme label="b" type="m">verkocht</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En die syne ouders <rhyme label="a" type="f" corresp="#s2:l1">wespen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Niet als al te seer en <rhyme label="b" type="m" corresp="#s2:l2">socht</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Welcke waren van de <rhyme label="a" type="f" corresp="#s2:l1">gespen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Die hen wirden <rhyme label="b" type="m" corresp="#s2:l2">aen-gebroght</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hy hadd' wat ghepeperts <rhyme label="a" type="f">gheten</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Daer de Bruyt niet af en <rhyme label="b" type="m">wist</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En syn keel van drooght' <rhyme label="a" type="f" corresp="#s3:l1">ghespleten</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Socht te wesen wat <rhyme label="b" type="m" corresp="#s3:l2">verfrist</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dit moest pot en kannen <rhyme label="a" type="f" corresp="#s3:l1">weten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Diemen seld' op Bruyloft <rhyme label="b" type="m" corresp="#s3:l2">mist</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Nu met heel, en dan met <rhyme label="a" type="f">halven</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Is hy stille <rhyme label="b" type="m">door-ghegaen</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Koeykens staeckt doch vry u <rhyme label="a" type="f" corresp="#s4:l1">kalven</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Want 't is met hun huyt <rhyme label="b" type="m" corresp="#s4:l2">gedaen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Kelen die-men soo kan <rhyme label="a" type="f" corresp="#s4:l1">salven</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Doen u vel terstont <rhyme label="b" type="m" corresp="#s4:l2">af-slaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Soo de Ridders nu <rhyme label="a" type="f">vernamen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Datter was ghewin voor <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En dat 't drincken soo <rhyme label="a" type="f" corresp="#s5:l1">bequamen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Voordeel broght aen 't <rhyme label="b" type="m" corresp="#s5:l2">vaderlant</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Hebben sy terstondt al <rhyme label="a" type="f" corresp="#s5:l1">t'samen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Pot en kannen <rhyme label="b" type="m" corresp="#s5:l2">aen-gherant</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">En begonnen soo te <rhyme label="a" type="f">gispen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Datter eerst een hicxken <rhyme label="b" type="m">quam</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dat de tongh begon te <rhyme label="a" type="f" corresp="#s6:l1">lispen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En den domp naer boven <rhyme label="b" type="m" corresp="#s6:l2">klam</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Waer op ieder uyt moest <rhyme label="a" type="f" corresp="#s6:l1">rispen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Gantsche brocken vande <rhyme label="b" type="m" corresp="#s6:l2">ham</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Doen was 't, Vrienden laet het <rhyme label="a" type="f">drincken</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Hier is on-raedt in het <rhyme label="b" type="m">spel</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Wilt op uwe zielen <rhyme label="a" type="f" corresp="#s7:l1">dincken</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Want wy hebben gif in 't <rhyme label="b" type="m" corresp="#s7:l2">vel</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Die ons vreugt komt te <rhyme label="a" type="f" corresp="#s7:l1">vermincken</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Saet my liever in de <rhyme label="b" type="m" corresp="#s7:l2">hel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Soo als lyde-loose <rhyme label="a" type="f">spooken</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Bleeck en deluw van <rhyme label="b" type="m">ghelaet</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Liepen sy het nat <rhyme label="a" type="f" corresp="#s8:l1">herkoken</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Dat hun op-brack al te <rhyme label="b" type="m" corresp="#s8:l2">laet</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">By de potten onder 't <rhyme label="a" type="f" corresp="#s8:l1">roocken</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Sonder oplicht van 't <rhyme label="b" type="m" corresp="#s8:l2">gebraet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Denckt eens wat verborgen <rhyme label="a" type="f">kuere</rhyme></l>
        <l id="s9:l2" met="4" type="+-">In dat bier verborghen <rhyme label="b" type="m">lagh</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Jeders keel quam uyt te <rhyme label="a" type="f" corresp="#s9:l1">vueren</rhyme></l>
        <l id="s9:l4" met="4" type="+-">'t Ghen' den eers te voren <rhyme label="b" type="m" corresp="#s9:l2">plagh</rhyme>:</l>
        <l id="s9:l5" met="4" type="+-">Wie sou sonder lacchen <rhyme label="a" type="f" corresp="#s9:l1">dueren</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Die dit guychel-spel <rhyme label="b" type="m" corresp="#s9:l2">aen-sagh</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Muer en want, daer van te <rhyme label="a" type="f">voren</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Geen tapitsery en <rhyme label="b" type="m">honck</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Was van eenighe <rhyme label="a" type="f" corresp="#s10:l1">verkoren</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Die dees slechtheyt <rhyme label="b" type="m" corresp="#s10:l2">teghen-gonck</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Om daer huys, en kerck, en <rhyme label="a" type="f" corresp="#s10:l1">toren</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Op te stellen net te <rhyme label="b" type="m" corresp="#s10:l2">pronck</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Dus dat hy hun eer sou <rhyme label="a" type="f">stelen</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Die-se rechts hun Vetters <rhyme label="b" type="m">hiet</rhyme>:</l>
        <l id="s11:l3" met="4" type="+-">Want hun wel-ghespoelde <rhyme label="a" type="f" corresp="#s11:l1">kelen</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Maeckten een tapyt als <rhyme label="b" type="m" corresp="#s11:l2">niet</rhyme>;</l>
        <l id="s11:l5" met="4" type="+-">Eert hem dan, 't is hoogh <rhyme label="a" type="f" corresp="#s11:l1">bevelen</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Die u sulcken waren <rhyme label="b" type="m" corresp="#s11:l2">biedt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Oorlof gasten, die soo <rhyme label="a" type="f">vellen</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">En tapyten maken <rhyme label="b" type="m">kunt</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Wilt u goedt te merckt vry <rhyme label="a" type="f" corresp="#s12:l1">stellen</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Koop-li'en sien ick u <rhyme label="b" type="m" corresp="#s12:l2">vergunt</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Die dry glasen, en dry <rhyme label="a" type="f" corresp="#s12:l1">snellen</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Voeren sullen in hun <rhyme label="b" type="m" corresp="#s12:l2">munt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
