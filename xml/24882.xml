  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">De steen die trect die naelde <rhyme label="a" type="m">naer</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Wien wondert das al hanich <rhyme label="a" type="m" corresp="#s1:l1">vaer</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Vor oghen die <rhyme label="b" type="f">bedrieghen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Oghen vlieghen hier ende <rhyme label="a" type="m" corresp="#s1:l1">daer</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Maer therte en can niet <rhyme label="b" type="f" corresp="#s1:l3">lieghen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Een oghe upslaen es <rhyme label="a" type="m">wandelbaer</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Maer als tghesichte wil bliven <rhyme label="a" type="m" corresp="#s2:l1">staer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ende laten in waert <rhyme label="b" type="f">vlieghen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">So moet daer therte segghen <rhyme label="a" type="m" corresp="#s2:l1">waer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Want zoe en can niet <rhyme label="b" type="f" corresp="#s2:l3">lieghen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Lieflic beilde speghel <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Mijn cracht es jeghen dijn <rhyme label="a" type="m" corresp="#s3:l1">begaer</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Als tskints es in der <rhyme label="b" type="f">wieghen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dijn moetic bliven al mine <rhyme label="a" type="m" corresp="#s3:l1">jaer</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Want herte en can niet <rhyme label="b" type="f" corresp="#s3:l3">lieghen</rhyme></l>
      </lg>
    </lg>
  </text>
