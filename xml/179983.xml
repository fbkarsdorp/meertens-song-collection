<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>179983</id>
    <date>
      <year-start>1828</year-start>
      <year-end>1828</year-end>
    </date>
    <tags/>
    <melody>De wereld is in rep en roer</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">De drukke Stad, het stille <rhyme label="a" type="m">Land</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Toont groot verschil in <rhyme label="a" type="m" corresp="#s1:l1">levensstand</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Den een lijkt niet naar d' <rhyme label="b" type="f">ander</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">De landman en de <rhyme label="c" type="m">stedeling</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Doorlopen elk hun eigen <rhyme label="c" type="m" corresp="#s1:l4">kring</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Schoon buren van <rhyme label="b" type="f" corresp="#s1:l3">elkander</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De landman is wat <rhyme label="a" type="m">onbeschaafd</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">De steêling meer met kunst <rhyme label="a" type="m" corresp="#s2:l1">begaafd</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zij doen dit sprekend <rhyme label="b" type="f">blijken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Doch beide zijn zij even <rhyme label="c" type="m">koen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Als 't hen om schijven is te <rhyme label="c" type="m" corresp="#s2:l4">doen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Zoo ziet men hen <rhyme label="b" type="f" corresp="#s2:l3">gelijken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De steêman op 't kantoor <rhyme label="a" type="m">addeerd</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Multipliceert en <rhyme label="a" type="m" corresp="#s3:l1">divideerd</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wilt geen octaaf <rhyme label="b" type="f">ontberen</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">De boer, schoon hij de pen <rhyme label="c" type="m">vermijdt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Weet ook door 't witte stukje <rhyme label="c" type="m" corresp="#s3:l4">krijt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Zijn geld te doen <rhyme label="b" type="f" corresp="#s3:l3">vermeenen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De steêling schoon 't fortuin hem <rhyme label="a" type="m">tart</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Speelt omber, faro en <rhyme label="a" type="m" corresp="#s4:l1">billard</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Waagt guldens ja, <rhyme label="b" type="f">ducaten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">De landman, zelfs niet wel bij <rhyme label="c" type="m">kas</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Speelt lanterlui en <rhyme label="c" type="m" corresp="#s4:l4">gravejas</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En waagt zijn laaste <rhyme label="b" type="f" corresp="#s4:l3">platen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De dame die de stad <rhyme label="a" type="m">bewoond</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Is grootsch als zij haar pronk <rhyme label="a" type="m" corresp="#s5:l1">vertoond</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Praalt met gebloemt en <rhyme label="b" type="f">veêren</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Het boeren meisje vind zich <rhyme label="c" type="m">mooi</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Door kanten kap met gouden <rhyme label="c" type="m" corresp="#s5:l4">tooi</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En rijken zondagsch <rhyme label="b" type="f" corresp="#s5:l3">kleeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Men toont zich in de stad <rhyme label="a" type="m">beleefd</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Waaneer men feest of maaltijd <rhyme label="a" type="m" corresp="#s6:l1">geeft</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Boert steek'lig met <rhyme label="b" type="f">elkander</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Op 't land wanneer men vreugde <rhyme label="c" type="m">viert</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Snapt ieder vrij; en raast en <rhyme label="c" type="m" corresp="#s6:l4">tiert</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ja d' een rolt over d' <rhyme label="b" type="f" corresp="#s6:l3">ander</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dus die opmerkzaam kijken <rhyme label="a" type="m">wil</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Vind tusschen stad en land <rhyme label="a" type="m" corresp="#s7:l1">verschil</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Maar in <rhyme label="b" type="f">uitwendigheden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Want mikt men alles tegen <rhyme label="c" type="m">één</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Het menschdom is in 't <rhyme label="c" type="m" corresp="#s7:l4">algemeen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Gelijk van aard en <rhyme label="b" type="f" corresp="#s7:l3">zeden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
