    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk heb de volt van alle <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">'t Welck is in Hemel en op <rhyme label="b" type="f">aerden</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">En sonder my geen vordeel <rhyme label="a" type="m" corresp="#s1:l1">doet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Al wat de menschen oyt <rhyme label="b" type="f" corresp="#s1:l2">vergaarden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat raserny besit u <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s2:l2" met="4" type="-+">O! weereltsch mensch en dwaas van <rhyme label="b" type="f">sinnen</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Dat ghy soud' meenen dat een <rhyme label="a" type="m" corresp="#s2:l1">man</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Kan sonder my yet <rhyme label="b" type="f" corresp="#s2:l2">overwinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat helpt u doch met groot <rhyme label="a" type="m">verdriet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">En swaren arbeydt na te <rhyme label="b" type="f">jaghen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Een schim van goet, dat u doch <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Kan baten, noch my doen <rhyme label="b" type="f" corresp="#s3:l2">behaghen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Eylaas! hoe weynigh soecken <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die nochtans ben den rechten <rhyme label="b" type="f">ghever</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Van't hooghste goet, dat eeuwigh <rhyme label="a" type="m" corresp="#s4:l1">bly</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En schat-rijck maackt mijns <rhyme label="b" type="f" corresp="#s4:l2">wets-belever</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Men siet, dat yder schoonheyt <rhyme label="a" type="m">mint</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat die van elck een wert <rhyme label="b" type="f">ghepresen</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Mijn schoonder niemant ergens <rhyme label="a" type="m" corresp="#s5:l1">vint</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ick nochtans onbemint moet <rhyme label="b" type="f" corresp="#s5:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Men jacht en tracht nae <rhyme label="a" type="m">Edeldom</rhyme>;</l>
        <l id="s6:l2" met="4" type="-+">Wie is van hoogher stam <rhyme label="b" type="f">ghebooren</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Dan ick, die selfs van Godt <rhyme label="a" type="m" corresp="#s6:l1">afkom</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En tot een Coningh ben <rhyme label="b" type="f" corresp="#s6:l2">verkooren</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Waarom dan schaamt ghy u voor <rhyme label="a" type="m">my</rhyme>?</l>
        <l id="s7:l2" met="4" type="-+">Waarom wilt ghy u niet <rhyme label="b" type="f">verbinden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Aan mijn gheslacht? dewijl dat <rhyme label="a" type="m" corresp="#s7:l1">ghy</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Gheen Edelder op Aard sult <rhyme label="b" type="f" corresp="#s7:l2">vinden</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghy dient een weereltsch Prins: <rhyme label="a" type="m">waarom</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Schaamt ghy u doch my dienst te <rhyme label="b" type="f">toonen</rhyme>?</l>
        <l id="s8:l3" met="4" type="-+">Ick ben de hooghste Prins <rhyme label="a" type="m" corresp="#s8:l1">al-om</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die heerlijck sal u dienst <rhyme label="b" type="f" corresp="#s8:l2">beloonen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ick ben de rijckste die'er <rhyme label="a" type="m">leeft</rhyme></l>
        <l id="s9:l2" met="4" type="-+">En oock de miltste in wegh te <rhyme label="b" type="f">schencken</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Mijn hert maar lust aan t'eysschen <rhyme label="a" type="m" corresp="#s9:l1">heeft</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Doch weynigh om t'versoecken <rhyme label="b" type="f" corresp="#s9:l2">dencken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ben ick mijns Vaders wijsheyt <rhyme label="a" type="m">niet</rhyme>?</l>
        <l id="s10:l2" met="4" type="-+">Kan ick den besten raat niet <rhyme label="b" type="f">spreecken</rhyme>?</l>
        <l id="s10:l3" met="4" type="-+">Nochtans men weynigh met my <rhyme label="a" type="m" corresp="#s10:l1">siet</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Beraden als sy in noot <rhyme label="b" type="f" corresp="#s10:l2">steecken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ick ben mijn Vaders glants en <rhyme label="a" type="m">eer</rhyme>;</l>
        <l id="s11:l2" met="4" type="-+">Mijn Majesteyt vervult de <rhyme label="b" type="f">landen</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">Wie is daarom verwondert <rhyme label="a" type="m" corresp="#s11:l1">seer</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Wie kust met nedrigheyt mijn <rhyme label="b" type="f" corresp="#s11:l2">handen</rhyme>;</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ick ben mijn trouwe vrienden <rhyme label="a" type="m">trouw</rhyme>:</l>
        <l id="s12:l2" met="4" type="-+">Die my niet lieven haat ick <rhyme label="b" type="f">weder</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Mijn schatten ick voor my niet <rhyme label="a" type="m" corresp="#s12:l1">houw</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Maar stort die op mijn Vrienden <rhyme label="b" type="f" corresp="#s12:l2">neder</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Maar evenwel, wie tracht daar <rhyme label="a" type="m">nae</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Om met my als een vrient te <rhyme label="b" type="f">leven</rhyme>?</l>
        <l id="s13:l3" met="4" type="-+">Mijn schat en vrientschap achtmen <rhyme label="a" type="m" corresp="#s13:l1">schae</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Men meent de Weerelt sal meer <rhyme label="b" type="f" corresp="#s13:l2">gheven</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Ick ben alleen het rechte <rhyme label="a" type="m">padt</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Waar lancks men veylighlijck kan <rhyme label="b" type="f">komen</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Tot in des hooghstens Conincks <rhyme label="a" type="m" corresp="#s14:l1">stadt</rhyme>;</l>
        <l id="s14:l4" met="4" type="-+">Lancks my te gaan veel nochtans <rhyme label="b" type="f" corresp="#s14:l2">schromen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Kort. Waerom twijffelt ghy dwaes <rhyme label="a" type="m">volck</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Mijn Woort als waerheyt te <rhyme label="b" type="f">gelooven</rhyme>?</l>
        <l id="s15:l3" met="4" type="-+">Ben ick niet Gods ghetrouwste <rhyme label="a" type="m" corresp="#s15:l1">tolck</rhyme>?</l>
        <l id="s15:l4" met="4" type="-+">En waarheyt selfs ghedaalt van <rhyme label="b" type="f" corresp="#s15:l2">boven</rhyme>?</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Ghetrouwer dan my vint ghy <rhyme label="a" type="m">gheen</rhyme>.</l>
        <l id="s16:l2" met="4" type="-+">Waar toe dan t'wijff'len aan mijn <rhyme label="b" type="f">woorden</rhyme>?</l>
        <l id="s16:l3" met="4" type="-+">Heeft ymant om my scha <rhyme label="a" type="m" corresp="#s16:l1">gheleen</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Die niet en kreegh meer, dan hem <rhyme label="b" type="f" corresp="#s16:l2">hoorde</rhyme>?</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Dewijl ick 'slevens oorspronck <rhyme label="a" type="m">ben</rhyme></l>
        <l id="s17:l2" met="4" type="-+">En 'tleven selfs, waarom o! <rhyme label="b" type="f">menschen</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Stinck ick voor dy? eylaas! <rhyme label="a" type="m" corresp="#s17:l1">beken</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Dat ick 't ben, waarom ghy moet <rhyme label="b" type="f" corresp="#s17:l2">wenschen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Ick ben het licht, waarom ist <rhyme label="a" type="m">doch</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Dat aan my weynigh 't licht <rhyme label="b" type="f">ontsteecken</rhyme>?</l>
        <l id="s18:l3" met="4" type="-+">Een leyts-man kloeck, en wijs, en <rhyme label="a" type="m" corresp="#s18:l1">noch</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Volght al de weerelt s'weerelts <rhyme label="b" type="f" corresp="#s18:l2">streecken</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Ick ben alleen der deuchden <rhyme label="a" type="m">maat</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">En oock wel-levens wissen <rhyme label="b" type="f">reghel</rhyme></l>
        <l id="s19:l3" met="4" type="-+">Op mijn Compas men seecker <rhyme label="a" type="m" corresp="#s19:l1">gaat</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Mijn waarheyt heeft mijn bloet tot <rhyme label="b" type="f" corresp="#s19:l2">zeghel</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Doch even wel men reghels <rhyme label="a" type="m">smeet</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Ondienstigh tot Godtsaal'ghe <rhyme label="b" type="f">zeden</rhyme>;</l>
        <l id="s20:l3" met="4" type="-+">Om die te volghen yder <rhyme label="a" type="m" corresp="#s20:l1">sweet</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Mijn wetten veel met voeten <rhyme label="b" type="f" corresp="#s20:l2">treden</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Ick ben alleen de ware <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s21:l2" met="4" type="-+">Die met gheen gal haar laat <rhyme label="b" type="f">vermenghen</rhyme>.</l>
        <l id="s21:l3" met="4" type="-+">Waarom acht ghy my <rhyme label="a" type="m" corresp="#s21:l1">ongheneught</rhyme>?</l>
        <l id="s21:l4" met="4" type="-+">Wie kan oyt vaster vreught <rhyme label="b" type="f" corresp="#s21:l2">voortbrenghen</rhyme>?</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Ick ben alleen der zielen <rhyme label="a" type="m">rust</rhyme>,</l>
        <l id="s22:l2" met="4" type="-+">En vroomen hulp; leght af u <rhyme label="b" type="f">sorghen</rhyme>,</l>
        <l id="s22:l3" met="4" type="-+">Die my vertrouwen, ick met <rhyme label="a" type="m" corresp="#s22:l1">lust</rhyme></l>
        <l id="s22:l4" met="4" type="-+">Verstadigh nu en alle <rhyme label="b" type="f" corresp="#s22:l2">morghen</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Indien een Leeuw of vellen <rhyme label="a" type="m">Beer</rhyme></l>
        <l id="s23:l2" met="4" type="-+">Ghedenckt de gunst by hem <rhyme label="b" type="f">ontfanghen</rhyme>,</l>
        <l id="s23:l3" met="4" type="-+">Indien een Hondt waackt voor sijn <rhyme label="a" type="m" corresp="#s23:l1">Heer</rhyme></l>
        <l id="s23:l4" met="4" type="-+">En volght dien, die hem spijse <rhyme label="b" type="f" corresp="#s23:l2">langhen</rhyme>:</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Indien een Arent trouw <rhyme label="a" type="m">erkent</rhyme></l>
        <l id="s24:l2" met="4" type="-+">Indien een Dolphijn heeft <rhyme label="b" type="f">behaghen</rhyme>.</l>
        <l id="s24:l3" met="4" type="-+">In die, welck hem door vrientschap <rhyme label="a" type="m" corresp="#s24:l1">went</rhyme>,</l>
        <l id="s24:l4" met="4" type="-+">Of die hem vreught of spijs <rhyme label="b" type="f" corresp="#s24:l2">toedraghen</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Hebt ghy my dan niet hert'lijck <rhyme label="a" type="m">lieff</rhyme>,</l>
        <l id="s25:l2" met="4" type="-+">Die eenmaal alle dingh <rhyme label="b" type="f">gheschapen</rhyme></l>
        <l id="s25:l3" met="4" type="-+">Heb tot u vreughd' en uw' <rhyme label="a" type="m" corresp="#s25:l1">gherieff</rhyme></l>
        <l id="s25:l4" met="4" type="-+">En die u schilt ben en u <rhyme label="b" type="f" corresp="#s25:l2">wapen</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">My die u hebt ghemaackt gantsch <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s26:l2" met="4" type="-+">Ghewilligh door mijn doodt en <rhyme label="b" type="f">wonden</rhyme></l>
        <l id="s26:l3" met="4" type="-+">Van Satans macht en <rhyme label="a" type="m" corresp="#s26:l1">slaverny</rhyme>,</l>
        <l id="s26:l4" met="4" type="-+">En oock van uwe straff en <rhyme label="b" type="f" corresp="#s26:l2">zonden</rhyme>!</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="-+">Sijn Voeder kent een <rhyme label="a" type="m">Eselin</rhyme></l>
        <l id="s27:l2" met="4" type="-+">Maar ghy o! gantsch ondanckb're <rhyme label="b" type="f">scharen</rhyme>,</l>
        <l id="s27:l3" met="4" type="-+">Ontseght hem danck, en eer, en <rhyme label="a" type="m" corresp="#s27:l1">min</rhyme>,</l>
        <l id="s27:l4" met="4" type="-+">Die u ten goed' gheen bloet wou <rhyme label="b" type="f" corresp="#s27:l2">sparen</rhyme>!</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="4" type="-+">Ick ben alleen en anders <rhyme label="a" type="m">gheen</rhyme></l>
        <l id="s28:l2" met="4" type="-+">De bron van al u heyl en <rhyme label="b" type="f">zeghen</rhyme>.</l>
        <l id="s28:l3" met="4" type="-+">Spant soo ghy wilt 't verstant by <rhyme label="a" type="m" corresp="#s28:l1">een</rhyme>,</l>
        <l id="s28:l4" met="4" type="-+">Doe ick het niet, 't loopt al u <rhyme label="b" type="f" corresp="#s28:l2">teghen</rhyme>.</l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="4" type="-+">Waar toe soo veel ghesweet, <rhyme label="a" type="m">ghedraeft</rhyme></l>
        <l id="s29:l2" met="4" type="-+">Met heyls-verlies om Aartsche <rhyme label="b" type="f">erven</rhyme>?</l>
        <l id="s29:l3" met="4" type="-+">Soeckt my, soeckt my die t' alles <rhyme label="a" type="m" corresp="#s29:l1">laaft</rhyme>,</l>
        <l id="s29:l4" met="4" type="-+">Wilt niet om t'Aartsch het Hemelsch <rhyme label="b" type="f" corresp="#s29:l2">derven</rhyme>.</l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="4" type="-+">Ick ben ghenadigh, en <rhyme label="a" type="m">schel-quijt</rhyme></l>
        <l id="s30:l2" met="4" type="-+">Vyt goeder herten alle <rhyme label="b" type="f">fouten</rhyme>.</l>
        <l id="s30:l3" met="4" type="-+">Hoe komt dan, sondaar, dat gh' in <rhyme label="a" type="m" corresp="#s30:l1">tijt</rhyme></l>
        <l id="s30:l4" met="4" type="-+">V ganck tot my niet durft <rhyme label="b" type="f" corresp="#s30:l2">verstouten</rhyme>.</l>
      </lg>
      <lg id="s31" type="stanza">
        <l id="s31:l1" met="4" type="-+">Hebt ghy o! nietigh mensch, gheen <rhyme label="a" type="m">schrick</rhyme></l>
        <l id="s31:l2" met="4" type="-+">Om my u Heere te <rhyme label="b" type="f">verstooren</rhyme>?</l>
        <l id="s31:l3" met="4" type="-+">Besint ghy niet, hoe licht dat <rhyme label="a" type="m" corresp="#s31:l1">ick</rhyme></l>
        <l id="s31:l4" met="4" type="-+">Selfs door een wenck u kan <rhyme label="b" type="f" corresp="#s31:l2">versmooren</rhyme>?</l>
      </lg>
      <lg id="s32" type="stanza">
        <l id="s32:l1" met="4" type="-+">Ghenadigh ben ick het is <rhyme label="a" type="m">waar</rhyme></l>
        <l id="s32:l2" met="4" type="-+">Maar oock rechtvaardigh in het <rhyme label="b" type="f">straffen</rhyme></l>
        <l id="s32:l3" met="4" type="-+">Mijn hant valt alle menschen <rhyme label="a" type="m" corresp="#s32:l1">swaar</rhyme></l>
        <l id="s32:l4" met="4" type="-+">Die niet haar sonden heel <rhyme label="b" type="f" corresp="#s32:l2">afschaffen</rhyme>.</l>
      </lg>
      <lg id="s33" type="stanza">
        <l id="s33:l1" met="4" type="-+">Nauw isser een die my recht <rhyme label="a" type="m">vreest</rhyme></l>
        <l id="s33:l2" met="4" type="-+">Schoon dat ick lijff en' ziel ter <rhyme label="b" type="f">hellen</rhyme></l>
        <l id="s33:l3" met="4" type="-+">Kan senden, en opt <rhyme label="a" type="m" corresp="#s33:l1">allermeest</rhyme></l>
        <l id="s33:l4" met="4" type="-+">Nae haer verdienst rechtvaardigh <rhyme label="b" type="f" corresp="#s33:l2">quellen</rhyme>.</l>
      </lg>
      <lg id="s34" type="stanza">
        <l id="s34:l1" met="4" type="-+">Daarom verlaater van u <rhyme label="a" type="m">Godt</rhyme></l>
        <l id="s34:l2" met="4" type="-+">Indien u traegheyt u <rhyme label="b" type="f">ontbeeren</rhyme></l>
        <l id="s34:l3" met="4" type="-+">Doet s'Hemels vreught, der vromen <rhyme label="a" type="m" corresp="#s34:l1">lot</rhyme>,</l>
        <l id="s34:l4" met="4" type="-+">Leght niet de schult op my u <rhyme label="b" type="f" corresp="#s34:l2">Heere</rhyme>.</l>
      </lg>
      <lg id="s35" type="stanza">
        <l id="s35:l1" met="4" type="-+">Want wat soud ick doch meerder <rhyme label="a" type="m">doen</rhyme></l>
        <l id="s35:l2" met="4" type="-+">Tot het bevord'ren van u <rhyme label="b" type="f">leven</rhyme>!</l>
        <l id="s35:l3" met="4" type="-+">Indien u niet tot deucht kan <rhyme label="a" type="m" corresp="#s35:l1">spoen</rhyme></l>
        <l id="s35:l4" met="4" type="-+">Het goet dat ick u heb <rhyme label="b" type="f" corresp="#s35:l2">ghegheven</rhyme>.</l>
      </lg>
      <lg id="s36" type="stanza">
        <l id="s36:l1" met="4" type="-+">O! steenen hert, 't welck niet <rhyme label="a" type="m">versacht</rhyme></l>
        <l id="s36:l2" met="4" type="-+">Door soo veel aenghename <rhyme label="b" type="f">gaven</rhyme>!</l>
        <l id="s36:l3" met="4" type="-+">Indien ghy niet komt tot <rhyme label="a" type="m" corresp="#s36:l1">aandacht</rhyme></l>
        <l id="s36:l4" met="4" type="-+">Door t'goet dat eeuwigh u kan <rhyme label="b" type="f" corresp="#s36:l2">laven</rhyme>.</l>
      </lg>
      <lg id="s37" type="stanza">
        <l id="s37:l1" met="4" type="-+">Indien u niet ghedreyghde <rhyme label="a" type="m">straff</rhyme></l>
        <l id="s37:l2" met="4" type="-+">Kan tot Godtzaligheyt <rhyme label="b" type="f">beweghen</rhyme>!</l>
        <l id="s37:l3" met="4" type="-+">Soo u de schaamte niet leyt <rhyme label="a" type="m" corresp="#s37:l1">aff</rhyme></l>
        <l id="s37:l4" met="4" type="-+">Van teghen my veel quaats te <rhyme label="b" type="f" corresp="#s37:l2">pleghen</rhyme>;</l>
      </lg>
      <lg id="s38" type="stanza">
        <l id="s38:l1" met="4" type="-+">Jae soo u hert maar dies te <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s38:l2" met="4" type="-+">Verhart, hoe dat ick u <rhyme label="b" type="f">betoone</rhyme></l>
        <l id="s38:l3" met="4" type="-+">Meer vriend'lijckheyt, en u in <rhyme label="a" type="m" corresp="#s38:l1">eer</rhyme></l>
        <l id="s38:l4" met="4" type="-+">En vreucht en goet ghesont laat <rhyme label="b" type="f" corresp="#s38:l2">woonen</rhyme>.</l>
      </lg>
      <lg id="s39" type="stanza">
        <l id="s39:l1" met="4" type="-+">Jae stadigh u met soo veel <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s39:l2" met="4" type="-+">En oock soo heerlijck kom <rhyme label="b" type="f">begroeten</rhyme>,</l>
        <l id="s39:l3" met="4" type="-+">Dat daer door selfs een Leeuw <rhyme label="a" type="m" corresp="#s39:l1">verwoet</rhyme></l>
        <l id="s39:l4" met="4" type="-+">Seer licht sijn wreetheyt sou <rhyme label="b" type="f" corresp="#s39:l2">versoeten</rhyme>.</l>
      </lg>
      <lg id="s40" type="stanza">
        <l id="s40:l1" met="4" type="-+">Wat sal dan doch mijn liefde <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s40:l2" met="4" type="-+">Meer doen? wat sal die noch <rhyme label="b" type="f">bedencken</rhyme>,</l>
        <l id="s40:l3" met="4" type="-+">Om u te helpen uyt den <rhyme label="a" type="m" corresp="#s40:l1">doot</rhyme></l>
        <l id="s40:l4" met="4" type="-+">Waar me'e ghy willens u wilt <rhyme label="b" type="f" corresp="#s40:l2">krencken</rhyme>?</l>
      </lg>
      <lg id="s41" type="stanza">
        <l id="s41:l1" met="4" type="-+">Ghelooft dat vry, dat ick van <rhyme label="a" type="m">sin</rhyme></l>
        <l id="s41:l2" met="4" type="-+">Niet ben, om u onwilligh <rhyme label="b" type="f">binnen</rhyme></l>
        <l id="s41:l3" met="4" type="-+">Mijns Vaders rijck te leyden. <rhyme label="a" type="m" corresp="#s41:l1">'kmin</rhyme></l>
        <l id="s41:l4" met="4" type="-+">Een gheef mijn vreught aan die my <rhyme label="b" type="f" corresp="#s41:l2">minnen</rhyme>.</l>
      </lg>
      <lg id="s42" type="stanza">
        <l id="s42:l1" met="4" type="-+">Daar toe oock mijn <rhyme label="a" type="m">rechtvaardigheyt</rhyme></l>
        <l id="s42:l2" met="4" type="-+">En laet niet toe, dat ick de <rhyme label="b" type="f">gheenen</rhyme></l>
        <l id="s42:l3" met="4" type="-+">Die leeft in <rhyme label="a" type="m" corresp="#s42:l1">onboetvaardigheyt</rhyme></l>
        <l id="s42:l4" met="4" type="-+">Mijns Vaders woonplaats sou <rhyme label="b" type="f" corresp="#s42:l2">verleenen</rhyme>.</l>
      </lg>
      <lg id="s43" type="stanza">
        <l id="s43:l1" met="4" type="-+">Op sonden straf en onheyl <rhyme label="a" type="m">past</rhyme>;</l>
        <l id="s43:l2" met="4" type="-+">Op recht ghelooff Gods rijck en <rhyme label="b" type="f">vreughden</rhyme>.</l>
        <l id="s43:l3" met="4" type="-+">Wilt ghy de vreught, u selffs <rhyme label="a" type="m" corresp="#s43:l1">ontlast</rhyme></l>
        <l id="s43:l4" met="4" type="-+">Van sond; betracht de ware <rhyme label="b" type="f" corresp="#s43:l2">deughden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
