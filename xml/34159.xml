  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Al die met eere wilt <rhyme label="a" type="f">stryden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Nemet een Hespe voor <rhyme label="b" type="m">gheweer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">'tGheschut dat sulde ghy <rhyme label="a" type="f" corresp="#s1:l1">myden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Vecht met ghelaesen 'tis meerder <rhyme label="b" type="m" corresp="#s1:l2">eer</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Sa, sa, drinckt <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Giet nat door den <rhyme label="c" type="m" corresp="#s1:l5">krop</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Men danst, en men springht, door de kracht van dit <rhyme label="c" type="m" corresp="#s1:l5">sop</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een teugh met vreughde <rhyme label="a" type="f">ghedroncken</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Maeckt ons bly-geestigh ende <rhyme label="b" type="m">verstout</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En laet 'tghelasken niet <rhyme label="a" type="f" corresp="#s2:l1">proncken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Soo ghy van de ghesontheyt <rhyme label="b" type="m" corresp="#s2:l2">hout</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Sa, sa, drinckt <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Giet nat door den <rhyme label="c" type="m" corresp="#s2:l5">krop</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Men danst, en men springht, door de kracht van dit <rhyme label="c" type="m" corresp="#s2:l5">sop</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Suypt uyt de snel, en, <rhyme label="a" type="f">ghelasen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Brenghet aen my ick sal doen <rhyme label="b" type="m">bescheet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als ghy't hebt <rhyme label="a" type="f" corresp="#s3:l1">uyt-gheblasen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ghy de kracht, ende deucht maer eerst <rhyme label="b" type="m" corresp="#s3:l2">weet</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Sa, sa, drinckt <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Giet nat door den <rhyme label="c" type="m" corresp="#s3:l5">krop</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Men danst, en men springht, door de kracht van dit <rhyme label="c" type="m" corresp="#s3:l5">sop</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt vry u buyckxkens dan <rhyme label="a" type="f">vollen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Suysselt ghy worden u beenen <rhyme label="b" type="m">swack</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Valt vry, ghy sult konnen <rhyme label="a" type="f" corresp="#s4:l1">rollen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Beter als gaen met meerder <rhyme label="b" type="m" corresp="#s4:l2">ghemack</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Sa, sa, drinckt <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Giet nat door den <rhyme label="c" type="m" corresp="#s4:l5">krop</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Men danst, en men sprinckt, door de kracht van dit <rhyme label="c" type="m" corresp="#s4:l5">sop</rhyme>.</l>
      </lg>
    </lg>
  </text>
