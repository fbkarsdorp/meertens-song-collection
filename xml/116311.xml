    <melody>Hoe lieflijk is mij uw gezicht</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe lieflik is my uw <rhyme label="a" type="m">gesicht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">O soete lieve kleine <rhyme label="a" type="m" corresp="#s1:l1">wicht</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Mijn waerde soontje, gunn' aen <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat ik magh lieflik kussen <rhyme label="b" type="m" corresp="#s1:l3">dy</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ey gunn' my, dat ik mijnen <rhyme label="a" type="m">aem</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Magh mengen met den dynen <rhyme label="a" type="m" corresp="#s2:l1">t'saem</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat uwe liefde met de <rhyme label="b" type="m">mijn'</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Alsoo vermenget moge <rhyme label="b" type="m" corresp="#s2:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hoe soud' ik konnen houden <rhyme label="a" type="m">in</rhyme></l>
        <l id="s3:l2" met="4" type="-+">De liefd' waer med' ik u <rhyme label="a" type="m" corresp="#s3:l1">bemin</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">Gantsch vyerighlik mijn <rhyme label="b" type="m">moeder-hert</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Tot u mijn kint bewogen <rhyme label="b" type="m" corresp="#s3:l3">wert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer waer was oyt in 's werelts <rhyme label="a" type="m">rondt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Een moeder soo door liefd' <rhyme label="a" type="m" corresp="#s4:l1">gewondt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Als ik tot u mijn waerde <rhyme label="b" type="m">kint</rhyme>?</l>
        <l id="s4:l4" met="4" type="-+">Mijn liefd' haer allen <rhyme label="b" type="m" corresp="#s4:l3">overwint</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O soete kint, ik minn' u <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Om dat ghy zijt mijn soon, maer <rhyme label="a" type="m" corresp="#s5:l1">meer</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Beminn' ik u, en ben <rhyme label="b" type="m">verblijdt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat ghy mijn Salighmaker <rhyme label="b" type="m" corresp="#s5:l3">zijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mijn kint, wat zijt ghy <rhyme label="a" type="m">wonderbaer</rhyme>!</l>
        <l id="s6:l2" met="4" type="-+">Ghy zijt mijn soontje wel, 't is <rhyme label="a" type="m" corresp="#s6:l1">waer</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Maer ik en hebb' noyt man <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dit is steeds in mijn hert <rhyme label="b" type="m" corresp="#s6:l3">geprent</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Van my, als uwe moeder, <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Ghy wel geboren in der <rhyme label="a" type="m" corresp="#s7:l1">tijt</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Maer ik uw moeder kenn' u <rhyme label="b" type="m">weer</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Voor mijnen Schepper en mijn <rhyme label="b" type="m" corresp="#s7:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">'t Is waer, ghy light hier teer en <rhyme label="a" type="m">kleyn</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Als 's menschen soon met ons <rhyme label="a" type="m" corresp="#s8:l1">gemeyn</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Maer ghy komt uyt des Hemels <rhyme label="b" type="m">throon</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En zijt des Alderhooghsten <rhyme label="b" type="m" corresp="#s8:l3">Soon</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ik hebbe negen maenden <rhyme label="a" type="m">u</rhyme></l>
        <l id="s9:l2" met="4" type="-+">In mijnen buyk gedragen <rhyme label="a" type="m" corresp="#s9:l1">nu</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Maer ghy, door 't woort van uwe <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Draeght my end alle dink met <rhyme label="b" type="m" corresp="#s9:l3">macht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghy zijt mijn vleesch en bloet <rhyme label="a" type="m">gewis</rhyme>;</l>
        <l id="s10:l2" met="4" type="-+">Maer Godt ook uwe Vader <rhyme label="a" type="m" corresp="#s10:l1">is</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">Ghy rust u nu in mijnen <rhyme label="b" type="m">schoot</rhyme>;</l>
        <l id="s10:l4" met="4" type="-+">In u rust mijne ziel in <rhyme label="b" type="m" corresp="#s10:l3">noot</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Van my uw moeder, waerde <rhyme label="a" type="m">kint</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Zijt ghy seer hertelik <rhyme label="a" type="m" corresp="#s11:l1">bemint</rhyme>;</l>
        <l id="s11:l3" met="4" type="-+">Ghy hadt my lief van <rhyme label="b" type="m">eeuwigheyt</rhyme>;</l>
        <l id="s11:l4" met="4" type="-+">Eer 's werelts gront oyt was <rhyme label="b" type="m" corresp="#s11:l3">geleyt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">'k Omhels' u in mijn armen; <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Omhelst met gunst en liefde <rhyme label="a" type="m" corresp="#s12:l1">my</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Ik kuss' u maer met mijnen <rhyme label="b" type="m">mont</rhyme>;</l>
        <l id="s12:l4" met="4" type="-+">Uw kussen maekt de ziel <rhyme label="b" type="m" corresp="#s12:l3">gesont</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Mijn borsten sooghen u met <rhyme label="a" type="m">melk</rhyme>;</l>
        <l id="s13:l2" met="4" type="-+">Ghy sooght met uwe leeringh <rhyme label="a" type="m" corresp="#s13:l1">elk</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Die als een nieuw-geboren <rhyme label="b" type="m">kint</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Sich daer begeerigh na <rhyme label="b" type="m" corresp="#s13:l3">bevindt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">'k Sal u geleyden op en <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Mijn kint, leydt ghy uw moeder <rhyme label="a" type="m" corresp="#s14:l1">weer</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">En voert haer, waer sy met u <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Soo vrees' ik nergens enigh <rhyme label="b" type="m" corresp="#s14:l3">quaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
