  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs de Tol wordt <rhyme label="a" type="f">om-ghedreven</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Draeyt hy van de <rhyme label="b" type="m">Swiepenstock</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Wilmen hem geen gispen <rhyme label="a" type="f" corresp="#s1:l1">gheven</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Strack soo leyt hy als een <rhyme label="b" type="m" corresp="#s1:l2">block</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als een Ezel wackre <rhyme label="a" type="f">slaghen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Op sen taepe ribben <rhyme label="b" type="m">krijght</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Sal hy wel ghewilligh <rhyme label="a" type="f" corresp="#s2:l1">draghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dat hy schier om verre <rhyme label="b" type="m" corresp="#s2:l2">zijght</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als de Roede treft de <rhyme label="a" type="f">leden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En de bitse geessels <rhyme label="b" type="m">slaen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sullen wy in deught en <rhyme label="a" type="f" corresp="#s3:l1">zeden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Vaeck wel vaerdigh henen <rhyme label="b" type="m" corresp="#s3:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Soo Godts handt ons komt te <rhyme label="a" type="f">drucken</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Of door moeyte, last, of <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Of door dapper <rhyme label="a" type="f" corresp="#s4:l1">onderdrucken</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Sullen wy wel deuchdigh <rhyme label="b" type="m" corresp="#s4:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Komt hy ons met goedt <rhyme label="a" type="f">vervullen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Datwe weeligh zijn en <rhyme label="b" type="m">rijck</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Vol vermaecken, siet wy <rhyme label="a" type="f" corresp="#s5:l1">sullen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Wentelen in't sondigh <rhyme label="b" type="m" corresp="#s5:l2">slijck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Weelde, door 'er soete <rhyme label="a" type="f">lusten</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Treckt ons van 'et Heyligh <rhyme label="b" type="m">padt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En se maeckt, door rijckdoms <rhyme label="a" type="f" corresp="#s6:l1">rusten</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Ons tot Deughde loom en <rhyme label="b" type="m" corresp="#s6:l2">mat</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'t Christen hert moet anders <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Soo in voor als <rhyme label="b" type="m">teghenspoet</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Moet 'et Godt van herten <rhyme label="a" type="f" corresp="#s7:l1">vreesen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">In gheloof en ware <rhyme label="b" type="m" corresp="#s7:l2">boet</rhyme>.</l>
      </lg>
    </lg>
  </text>
