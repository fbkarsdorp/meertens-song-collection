    <tags/>
    <melody>Amarylletje mijn vriendin</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ach schoone Maeght waer gaedy <rhyme label="a" type="m">heen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Datje dus rasjes loopt <rhyme label="a" type="m" corresp="#s1:l1">alleen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Secht my waer heen Ambstels <rhyme label="b" type="m">Godin</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die'k boven al d'ander <rhyme label="b" type="m" corresp="#s1:l3">bemin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Vertoeft u dienaer loopt niet <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ghy soud u schielijck hier doen <rhyme label="a" type="m" corresp="#s2:l1">seer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ick bid loopt soo niet schoone <rhyme label="b" type="m">maeght</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat ghy het daer na niet <rhyme label="b" type="m" corresp="#s2:l3">beclaeght</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ioffrou vliet van my niet soo <rhyme label="a" type="m">snel</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Of ick com anders in <rhyme label="a" type="m" corresp="#s3:l1">ghequel</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Lief ist voor my dat ghy dus <rhyme label="b" type="m">vliedt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Heb ick misdaen ick weet het <rhyme label="b" type="m" corresp="#s3:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schoon liefheb ick, my wat <rhyme label="a" type="m">verkalt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Of yet ghedaen dat u <rhyme label="a" type="m" corresp="#s4:l1">misvalt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Soo bid ick u dan om <rhyme label="b" type="m">ghenae</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En comt haelt weer dubbelt u <rhyme label="b" type="m" corresp="#s4:l3">schae</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wilt ghy dat ick om uwent <rhyme label="a" type="m">wil</rhyme></l>
        <l id="s5:l2" met="4" type="-+">niet en vergae soo staet wat <rhyme label="a" type="m" corresp="#s5:l1">stil</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Of anders salt van stonden <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Met my o schoon Nimph zijn <rhyme label="b" type="m" corresp="#s5:l3">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mach ick verwerven Nimphe <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Een cleene beed van u <rhyme label="a" type="m" corresp="#s6:l1">persoon</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Soo bid ick Nimphe dat ick <rhyme label="b" type="m">mach</rhyme></l>
        <l id="s6:l4" met="4" type="-+">V kusse noch eens desen <rhyme label="b" type="m" corresp="#s6:l3">dach</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nimph can ick u verharde <rhyme label="a" type="m">Hart</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Vermorven niet door pijn en <rhyme label="a" type="m" corresp="#s7:l1">smart</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Soo bid ick dan o Godt <rhyme label="b" type="m">Iupijn</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Dat ick van haer eeuwich mach <rhyme label="b" type="m" corresp="#s7:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Prins 'tis om niet te loopen <rhyme label="a" type="m">nae</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Als sy doch niet wil segghen <rhyme label="a" type="m" corresp="#s8:l1">jae</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat heb ick nu genoech <rhyme label="b" type="m">ghespeurt</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Want tis aen and're mee <rhyme label="b" type="m" corresp="#s8:l3">gebeurt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
