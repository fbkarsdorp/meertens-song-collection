    <melody>Psalm 077 Datheen</melody>
  <author>Philippus van Sorgen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Heer! hoe sal ick u <rhyme label="a" type="f">vergelden</rhyme>?</l>
        <l id="s1:l2" met="4" type="+-">En met lof genoegsaem <rhyme label="a" type="f" corresp="#s1:l1">melden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">‘t Goede, dat my desen <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Door uw handt is <rhyme label="b" type="m" corresp="#s1:l3">toegebracht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Iesu Christe, Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">‘k Sal u prijsen, u <rhyme label="c" type="f" corresp="#s1:l5">vereeren</rhyme>;</l>
        <l id="s1:l7" met="4" type="+-">Want ghy, na uw <rhyme label="d" type="m">goedigheyt</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Mijn rotz, en mijn schuyl-plaets <rhyme label="d" type="m" corresp="#s1:l7">zijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ghy beschermt de <rhyme label="a" type="f">Isreliten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die laet ghy uw gunst <rhyme label="a" type="f" corresp="#s2:l1">genieten</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">’s Morgens, ’s avondts, en by <rhyme label="b" type="m">nacht</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Houdt ghy over haer de <rhyme label="b" type="m" corresp="#s2:l3">wacht</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ghy weet al haer <rhyme label="c" type="f">ongelucken</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Te bevrijden, wech te <rhyme label="c" type="f" corresp="#s2:l5">rukken</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Uyt des Satans loose <rhyme label="d" type="m">strick</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">En des doodts benaude <rhyme label="d" type="m" corresp="#s2:l7">schrick</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ghy laet over haer niet <rhyme label="a" type="f">komen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat des Werelts Kind’ren <rhyme label="a" type="f" corresp="#s3:l1">schroomen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">In het doncker zijt ghy <rhyme label="b" type="m">haer</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Licht, en als een <rhyme label="b" type="m" corresp="#s3:l3">beukelaer</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Ghy wilt uwe Eng’len <rhyme label="c" type="f">geven</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Tot haer dienaers in haer <rhyme label="c" type="f" corresp="#s3:l5">leven</rhyme>;</l>
        <l id="s3:l7" met="4" type="+-">Want haer toch de <rhyme label="d" type="m">Zaligheyt</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Is belooft en <rhyme label="d" type="m" corresp="#s3:l7">toegeseyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">‘k Had my tot de rust <rhyme label="a" type="f">begeven</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En ghy zijt my by <rhyme label="a" type="f" corresp="#s4:l1">gebleven</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ghy hebt over my de <rhyme label="b" type="m">wacht</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Nauw gehouden in de <rhyme label="b" type="m" corresp="#s4:l3">nacht</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Uwen arm was my een <rhyme label="c" type="f">wapen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Op dat ick gerust sou <rhyme label="c" type="f" corresp="#s4:l5">slapen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Ghy hebt tot my in die <rhyme label="d" type="m">tijdt</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Uwen vleugel <rhyme label="d" type="m" corresp="#s4:l7">uytgebreydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ghy waert aen mijn rechter <rhyme label="a" type="f">zijde</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Als ick my te slapen <rhyme label="a" type="f" corresp="#s5:l1">leyde</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Iesu ’s morgens vond ick <rhyme label="b" type="m">dy</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Onverscheydentlijck by <rhyme label="b" type="m" corresp="#s5:l3">my</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Ghy droeght over my de <rhyme label="c" type="f">sorgen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">In het duyster, in ‘t <rhyme label="c" type="f" corresp="#s5:l5">verborgen</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Nu sie ick het <rhyme label="d" type="m">Morgen-licht</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">En met een u <rhyme label="d" type="m" corresp="#s5:l7">aengesicht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Och! wat sal ‘t een soet <rhyme label="a" type="f">ontwaken</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Voor my zijn, als al de <rhyme label="a" type="f" corresp="#s6:l1">saken</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Sullen werden <rhyme label="b" type="m">opgerecht</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Als uw Woort ons heeft <rhyme label="b" type="m" corresp="#s6:l3">geseght</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Als ick werden sal <rhyme label="c" type="f">verzadight</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">En ten vollen <rhyme label="c" type="f" corresp="#s6:l5">begenadight</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Door uw heerlijck <rhyme label="d" type="m">aengesicht</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">In wiens licht ick sie het <rhyme label="d" type="m" corresp="#s6:l7">licht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Heer Iesu, hoogh <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">‘k Sal dan eeuwigh by u <rhyme label="a" type="f" corresp="#s7:l1">wesen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dienen u, daer ghy <rhyme label="b" type="m">zijt</rhyme></l>
        <l id="s7:l4" met="4" type="+-">In volkomen <rhyme label="b" type="m" corresp="#s7:l3">Heyligheyt</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Ach! hoe voel ick het <rhyme label="c" type="f">verlangen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Mijne Ziel geduerigh <rhyme label="c" type="f" corresp="#s7:l5">prangen</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Na dat schoone <rhyme label="d" type="m">Koninckrijck</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Nergens is’er sijns <rhyme label="d" type="m" corresp="#s7:l7">gelijck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">‘k Moet een kleynen tijd noch <rhyme label="a" type="f">wachten</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Weynigh dagen, weynigh <rhyme label="a" type="f" corresp="#s8:l1">nachten</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Evenwel ‘t valt my seer <rhyme label="b" type="m">langh</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">‘t Valt my bitter, ‘t valt my <rhyme label="b" type="m" corresp="#s8:l3">bangh</rhyme>;</l>
        <l id="s8:l5" met="4" type="+-">Nochtans wil ick u na <rhyme label="c" type="f">waerde</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Eeren, wijl ick ben op <rhyme label="c" type="f" corresp="#s8:l5">aerde</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">‘t Werck, dat ghy noch hebt voor <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Wil ick doen met ‘t herte <rhyme label="d" type="m" corresp="#s8:l7">bly</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Een ding wil ick maer <rhyme label="a" type="f">begeeren</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Wilt mijn Bede niet <rhyme label="a" type="f" corresp="#s9:l1">afweeren</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Merckt op ‘t geen ick tot u <rhyme label="b" type="m">segh</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">En met smeecken voor u <rhyme label="b" type="m" corresp="#s9:l3">legh</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Laet geen <rhyme label="c" type="f">ongerechtigheden</rhyme></l>
        <l id="s9:l6" met="4" type="+-">My verlocken, noch <rhyme label="c" type="f" corresp="#s9:l5">vertreden</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Doet my mijden alle <rhyme label="d" type="m">quaet</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">Volgen uwen wijsen <rhyme label="d" type="m" corresp="#s9:l7">raedt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Ghy die zijt seer <rhyme label="a" type="f">Goedertieren</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Wilt my in uw wegen <rhyme label="a" type="f" corresp="#s10:l1">stieren</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Ghy zijt toch mijn heerlijck <rhyme label="b" type="m">lot</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Al mijn heyl is by u <rhyme label="b" type="m" corresp="#s10:l3">Godt</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Wilt my toch ten besten <rhyme label="c" type="f">raden</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Leyden op uwe soete <rhyme label="c" type="f" corresp="#s10:l5">paden</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Ghy zijt by my voor en <rhyme label="d" type="m">na</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Waer ick sit, of waer ick <rhyme label="d" type="m" corresp="#s10:l7">sta</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Houdt my af van mijne <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Soo werd ick oprecht <rhyme label="a" type="f" corresp="#s11:l1">bevonden</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Maeckt my nedrigh ende <rhyme label="b" type="m">sacht</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Na uw voorbeelt, door uw <rhyme label="b" type="m" corresp="#s11:l3">kracht</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Geeft, dat ick in ‘t lichgt kan <rhyme label="c" type="f">wand’len</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">In oprechtheyt alles <rhyme label="c" type="f" corresp="#s11:l5">hand’len</rhyme></l>
        <l id="s11:l7" met="4" type="+-">’k Sal dan zijn in u <rhyme label="d" type="m">verheught</rhyme>,</l>
        <l id="s11:l8" met="4" type="+-">Springen op van enckel <rhyme label="d" type="m" corresp="#s11:l7">vreught</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Als ghy my sult kracht <rhyme label="a" type="f">toesenden</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Sal geen sonde my seer <rhyme label="a" type="f" corresp="#s12:l1">schenden</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">’k Wensch te treffen haren <rhyme label="b" type="m">kop</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Datse noyt weer stonden <rhyme label="b" type="m" corresp="#s12:l3">op</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">‘k Vint mijn Ziel oock seer <rhyme label="c" type="f">genegen</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Tot uw Wet, en tot uw <rhyme label="c" type="f" corresp="#s12:l5">wegen</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">Dit is by my vast <rhyme label="d" type="m">geset</rhyme>,</l>
        <l id="s12:l8" met="4" type="+-">Nauw te letten op uw <rhyme label="d" type="m" corresp="#s12:l7">Wet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">‘k Wil geven al mijn <rhyme label="a" type="f">krachten</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">All’ mijn woorden en <rhyme label="a" type="f" corresp="#s13:l1">gedachten</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Tot uw eer, ‘k wil op u <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Kleven u geduerigh <rhyme label="b" type="m" corresp="#s13:l3">aen</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Geef dit my en al uw <rhyme label="c" type="f">Kind’ren</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Van de meerd’re tot de <rhyme label="c" type="f" corresp="#s13:l5">mind’ren</rhyme>,</l>
        <l id="s13:l7" met="4" type="+-">Die u vlijtigh roepen <rhyme label="d" type="m">aen</rhyme>,</l>
        <l id="s13:l8" met="4" type="+-">Om in uwe Wet te <rhyme label="d" type="m" corresp="#s13:l7">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
