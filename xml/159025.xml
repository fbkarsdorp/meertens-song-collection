  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">COrt is des menschen <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Vol commer en <rhyme label="b" type="m">verdriet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Geene en sijnder <rhyme label="a" type="f" corresp="#s1:l1">gebleven</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Diemen ter Weerelt <rhyme label="b" type="m" corresp="#s1:l2">siet</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Hoe hoogh <rhyme label="a" type="f" corresp="#s1:l1">verheven</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Zy worden al tot <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wy wetent van te <rhyme label="a" type="f">vooren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wie hier op aerden <rhyme label="b" type="m">zweeft</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zy sijn daer toe <rhyme label="a" type="f" corresp="#s2:l1">gebooren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Hoe langhe dat elck <rhyme label="b" type="m" corresp="#s2:l2">leeft</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Tis al <rhyme label="a" type="f" corresp="#s2:l1">verlooren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die Doot haer noch <rhyme label="b" type="m" corresp="#s2:l2">aenkleeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ten kan niet lange <rhyme label="a" type="f">deuren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dit leven vol <rhyme label="b" type="m">onrust</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Men siet dicwils <rhyme label="a" type="f" corresp="#s3:l1">gebeuren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Het wort haest uyt <rhyme label="b" type="m" corresp="#s3:l2">geblust</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Tis om te <rhyme label="a" type="f" corresp="#s3:l1">betreuren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die daer leeft in <rhyme label="b" type="m" corresp="#s3:l2">wellust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wellusten moet men <rhyme label="a" type="f">vlieden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Deur Goddelijcke <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Haer sal soo wel <rhyme label="a" type="f" corresp="#s4:l1">geschieden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als hy komt inder <rhyme label="b" type="m" corresp="#s4:l2">nacht</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Naer schrifs <rhyme label="a" type="f" corresp="#s4:l1">bedieden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die daer houden goe <rhyme label="b" type="m" corresp="#s4:l2">wacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die daer goede wacht <rhyme label="a" type="f">houwen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Als een getrouwen <rhyme label="b" type="m">knecht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die sullen vreucht <rhyme label="a" type="f" corresp="#s5:l1">aenschouwen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Soo Christus selve <rhyme label="b" type="m" corresp="#s5:l2">secht</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Vrienden vol <rhyme label="a" type="f" corresp="#s5:l1">trouwen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Vermijt u van <rhyme label="b" type="m" corresp="#s5:l2">onrecht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dat onrecht haet den <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Om dat het hem <rhyme label="b" type="m">mishaeght</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die haer niet en <rhyme label="a" type="f" corresp="#s6:l1">bekeeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Oft hijt nu al <rhyme label="b" type="m" corresp="#s6:l2">verdraeght</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Het sal soo <rhyme label="a" type="f" corresp="#s6:l1">seere</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Hier naer worden <rhyme label="b" type="m" corresp="#s6:l2">beklaeght</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dat beklaghen te <rhyme label="a" type="f">late</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Sal niet worden <rhyme label="b" type="m">verhoort</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Het wert veel meerder <rhyme label="a" type="f" corresp="#s7:l1">bate</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Te dringen deur die <rhyme label="b" type="m" corresp="#s7:l2">Poort</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Op dat elck <rhyme label="a" type="f" corresp="#s7:l1">hate</rhyme></l>
        <l id="s7:l6" met="3" type="-+">'t Bevleckte Rock <rhyme label="b" type="m" corresp="#s7:l2">verstoort</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Men mach niet meer <rhyme label="a" type="f">aenveerden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Vruchten van desen <rhyme label="b" type="m">Boom</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Maer als die wilde <rhyme label="a" type="f" corresp="#s8:l1">Peerden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Houdent vast inden <rhyme label="b" type="m" corresp="#s8:l2">Toom</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Als den <rhyme label="a" type="f" corresp="#s8:l1">onweerden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Worsteler tegen <rhyme label="b" type="m" corresp="#s8:l2">stroom</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Gheeft my in mijn <rhyme label="a" type="f">gedachten</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Dat ick doch sterven <rhyme label="b" type="m">moet</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Op dat ick my mach <rhyme label="a" type="f" corresp="#s9:l1">wachten</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Van sondigen met <rhyme label="b" type="m" corresp="#s9:l2">spoet</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Die Maechden <rhyme label="a" type="f" corresp="#s9:l1">slachten</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Die daer sijn wijs en <rhyme label="b" type="m" corresp="#s9:l2">vroet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Op dat als ghy zult <rhyme label="a" type="f">komen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">En my nemen van <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Dat ick niet en moet <rhyme label="a" type="f" corresp="#s10:l1">schromen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">O Heere <rhyme label="b" type="m" corresp="#s10:l2">goedertier</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Voor dat <rhyme label="a" type="f" corresp="#s10:l1">verdomen</rhyme></l>
        <l id="s10:l6" met="3" type="-+">In dat eeuwige <rhyme label="b" type="m" corresp="#s10:l2">Vier</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Als ghy zult <rhyme label="a" type="f">openbaren</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Op uwen <rhyme label="b" type="m">Rechter-stoel</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dan sullen die <rhyme label="a" type="f" corresp="#s11:l1">sondaren</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Moeten naer mijn <rhyme label="b" type="m" corresp="#s11:l2">ghevoel</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Gaen met <rhyme label="a" type="f" corresp="#s11:l1">bezwaren</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Inden eeuwigen <rhyme label="b" type="m" corresp="#s11:l2">Poel</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">En sullen moeten <rhyme label="a" type="f">derven</rhyme></l>
        <l id="s12:l2" met="3" type="-+">U eeuwige Rijcke <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Laet ons van u <rhyme label="a" type="f" corresp="#s12:l1">verwerven</rhyme></l>
        <l id="s12:l4" met="3" type="-+">O Heere Godt <rhyme label="b" type="m" corresp="#s12:l2">minjoot</rhyme></l>
        <l id="s12:l5" met="2" type="-+">Een zalich <rhyme label="a" type="f" corresp="#s12:l1">sterven</rhyme></l>
        <l id="s12:l6" met="3" type="-+">'t Welck bevrijdt van die <rhyme label="b" type="m" corresp="#s12:l2">Doodt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Princelijck Godt <rhyme label="a" type="f">eersame</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Aensiet ons Aerde en <rhyme label="b" type="m">slijck</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Dat is den rechten <rhyme label="a" type="f" corresp="#s13:l1">Name</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Van ons doch <rhyme label="b" type="m" corresp="#s13:l2">alghelijck</rhyme>,</l>
        <l id="s13:l5" met="2" type="-+">Maeckt ons <rhyme label="a" type="f" corresp="#s13:l1">bequame</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Tot u eeuwighe <rhyme label="b" type="m" corresp="#s13:l2">Rijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
