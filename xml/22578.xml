  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Och, Licht des hemels <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ende alder werelt troost <rhyme label="b" type="m">ghemeyn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Met Uwer wonden <rhyme label="a" type="m" corresp="#s1:l1">medecyn</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Soe maect mijn hert van sonden <rhyme label="b" type="m" corresp="#s1:l2">reyn</rhyme>!</l>
        <l id="s1:l5" met="4" type="-+">U mijn, die sprinct als een <rhyme label="b" type="m" corresp="#s1:l2">fonteyn</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Mocht ickx een dropelkijn <rhyme label="c" type="m">ontfaen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Soe waer vertroest al mijn <rhyme label="b" type="m" corresp="#s1:l2">gheweyn</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Ende al mijn trueren waer <rhyme label="c" type="m" corresp="#s1:l6">ghedaen</rhyme>!</l>
        <l id="s1:l9" met="4" type="-+">Soe waer vertroest al mijn <rhyme label="b" type="m" corresp="#s1:l2">gheweyn</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Ende al mijn trueren waer <rhyme label="c" type="m" corresp="#s1:l6">ghedaen</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Noch wil ic houden gueden <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Al ist dat ic ghevallen <rhyme label="b" type="m">bin</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Ic hoep, God sel my gheven <rhyme label="a" type="m" corresp="#s2:l1">spoet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Tot doechden ende tot Sinder <rhyme label="b" type="m" corresp="#s2:l2">min</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Tot Hem soe keer ic minen <rhyme label="b" type="m" corresp="#s2:l2">sin</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die werelt wil <rhyme label="c" type="m">avegaen</rhyme>.</l>
        <l id="s2:l7" met="4" type="-+">Neemt my, Schoen Heer, in Uwer <rhyme label="b" type="m" corresp="#s2:l2">min</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Al heb ic U ontrou <rhyme label="c" type="m" corresp="#s2:l6">ghedaen</rhyme>.</l>
        <l id="s2:l9" met="4" type="-+">Neemt my, Schoen Heer, in Uwer <rhyme label="b" type="m" corresp="#s2:l2">min</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Al heb ic U ontrou <rhyme label="c" type="m" corresp="#s2:l6">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ic mach wel claghen <rhyme label="a" type="m">jammerlijck</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat mijn doechden sijn alsoe <rhyme label="b" type="m">smal</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat ic Gods beelde <rhyme label="a" type="m" corresp="#s3:l1">suverlijck</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">In my aldus besmetten <rhyme label="b" type="m" corresp="#s3:l2">sal</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat Jhesus minde boven <rhyme label="b" type="m" corresp="#s3:l2">al</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Daer Hi den doot om woude <rhyme label="c" type="m">ontfaen</rhyme>.</l>
        <l id="s3:l7" met="4" type="-+">Ic weet, hoe ict Hem dancken <rhyme label="b" type="m" corresp="#s3:l2">sal</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Van dat guet, dat ons Jhesus heeft <rhyme label="c" type="m" corresp="#s3:l6">ghedaen</rhyme>.</l>
        <l id="s3:l9" met="4" type="-+">Ic weet, hoe ict Hem dancken <rhyme label="b" type="m" corresp="#s3:l2">sal</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Van dat guet, dat ons Jhesus heeft <rhyme label="c" type="m" corresp="#s3:l6">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nu wil ic noch houden gueden <rhyme label="a" type="m">moet</rhyme>.</l>
        <l id="s4:l2" met="4" type="-+">Al ist dat ic ghevallen <rhyme label="b" type="m">bin</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ic hoep, God sel my gheven <rhyme label="a" type="m" corresp="#s4:l1">spoet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Tot doechde ende tot Sijnder <rhyme label="b" type="m" corresp="#s4:l2">myn</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Tot Hem soe keer ic minen <rhyme label="b" type="m" corresp="#s4:l2">sin</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Ic wil my voeghen <rhyme label="c" type="m">altehant</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Te leven, Heer, nae Dinen <rhyme label="b" type="m" corresp="#s4:l2">wil</rhyme>:</l>
        <l id="s4:l8" met="4" type="-+">Gheeft my nu wijsheit ende <rhyme label="c" type="m" corresp="#s4:l6">verstant</rhyme>.</l>
        <l id="s4:l9" met="4" type="-+">Te leven, Heer, nae Dinen <rhyme label="b" type="m" corresp="#s4:l2">wil</rhyme>:</l>
        <l id="s4:l10" met="4" type="-+">Gheeft my nu wijsheit ende <rhyme label="c" type="m" corresp="#s4:l6">verstant</rhyme>.</l>
      </lg>
    </lg>
