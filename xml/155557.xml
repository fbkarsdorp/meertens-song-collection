    <melody>Ne vous offensez madame</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DIe met Sieckt', of Koorts gaet <rhyme label="a" type="f">gunnen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Staegh belaÃªn met sware <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Gheern gebruyckt hy <rhyme label="a" type="f" corresp="#s1:l1">Medicijnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Al is 't dat sy bitter <rhyme label="b" type="m" corresp="#s1:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dese daedt moet ons <rhyme label="a" type="f">verstrecken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Om in harde <rhyme label="b" type="m">tegen-spoedt</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Sacht gedult in 't hert te <rhyme label="a" type="f" corresp="#s2:l1">wecken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Denckende het is ons <rhyme label="b" type="m" corresp="#s2:l2">goedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Soo verdorven sijn de <rhyme label="a" type="f">Menschen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Selver oock de kind'ren <rhyme label="b" type="m">Godts</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Gaet haer alle dingh na <rhyme label="a" type="f" corresp="#s3:l1">wenschen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Licht'lijck wordt haer herte <rhyme label="b" type="m" corresp="#s3:l2">trots</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maer soo wanneer haer <rhyme label="a" type="f">aentreffen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Druck, en anghst, en <rhyme label="b" type="m">tegen-spoedt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Sullen sy haer hert <rhyme label="a" type="f" corresp="#s4:l1">verheffen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Boven na het hooghste <rhyme label="b" type="m" corresp="#s4:l2">goedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Noyt siet men de Sterren <rhyme label="a" type="f">blincken</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Als in 't donckerst van de <rhyme label="b" type="m">Nacht</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">'t Water sal in haesten <rhyme label="a" type="f" corresp="#s5:l1">stincken</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Soo het stil staet in de <rhyme label="b" type="m" corresp="#s5:l2">Gracht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'t Gladde yser sal <rhyme label="a" type="f">verroesten</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Soo men 't tot gheen arbeydt <rhyme label="b" type="m">voeght</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">En den Acker sal <rhyme label="a" type="f" corresp="#s6:l1">verwoesten</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Soo men hem niet om en <rhyme label="b" type="m" corresp="#s6:l2">ploeght</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'t Vuyle Goudt moet in de <rhyme label="a" type="f">vlamme</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Eer dat men het suyv'ren <rhyme label="b" type="m">kan</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">'t Jonge kindt moet van de <rhyme label="a" type="f" corresp="#s7:l1">Mamme</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Sal 't op-wassen tot een <rhyme label="b" type="m" corresp="#s7:l2">Man</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'t Koorn most in de windt te <rhyme label="a" type="f">stuyven</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Eer dat het is schoon <rhyme label="b" type="m">geweest</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">En de alder-soetste <rhyme label="a" type="f" corresp="#s8:l1">Druyven</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Druckt de Persse <rhyme label="b" type="m" corresp="#s8:l2">aldermeest</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Sal het vleysch bequaemlick <rhyme label="a" type="f">dueren</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Soo moet het gesouten <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s9:l3" met="4" type="+-">En het Koper moetmen <rhyme label="a" type="f" corresp="#s9:l1">schueren</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">O het heeft noch glans, noch <rhyme label="b" type="m" corresp="#s9:l2">schijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Als de Heer ons oock wil <rhyme label="a" type="f">vagen</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Schoon wy voelen smert, en <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Laet ons dat geduldigh <rhyme label="a" type="f" corresp="#s10:l1">dragen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">'t Sal tot onsen besten <rhyme label="b" type="m" corresp="#s10:l2">sijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
