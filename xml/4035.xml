    <melody>Mijn tijd gaat weg en ik daar mee</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IN liden in <rhyme label="a" type="f">striden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ende in menich swaer <rhyme label="b" type="m">verdriet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Heeft mi die heere <rhyme label="c" type="f">ghelaten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Mijn sinnen willen mi <rhyme label="c" type="f" corresp="#s1:l3">ontsaten</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ick en cans ghedraghen <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick dooghe in mijnder <rhyme label="a" type="f">herten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Alsoe ouer grooten <rhyme label="b" type="m">pine</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Het cost mi alle mijn <rhyme label="c" type="f">crachten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ick en cans mi niet <rhyme label="c" type="f" corresp="#s2:l3">ghewachten</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Voer dat ick ontbonden <rhyme label="b" type="m" corresp="#s2:l2">ben</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Waer om willen wij <rhyme label="a" type="f">trueren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het moet doch al ghelden <rhyme label="b" type="m">sijn</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Maer als den tijt sal <rhyme label="c" type="f">comen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dat ons alle dinc sal <rhyme label="c" type="f" corresp="#s3:l3">vromen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dan salt veel anders <rhyme label="b" type="m" corresp="#s3:l2">fijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">So wie getroost wil <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ghetroost in deser corter <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Den troost van deser <rhyme label="c" type="f">eerden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En is van gheender <rhyme label="c" type="f" corresp="#s4:l3">weerden</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Hi is weynich diemen <rhyme label="b" type="m" corresp="#s4:l2">vint</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Alle dinc coemt tot een <rhyme label="a" type="f">ende</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sonder die alder liefste <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Hi sal oock altoos <rhyme label="c" type="f">bliuen</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Men can dat niet <rhyme label="c" type="f" corresp="#s5:l3">besriuen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Wat duecht dat hi werct in <rhyme label="b" type="m" corresp="#s5:l2">mi</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">God gheuen van sinen <rhyme label="a" type="f">goede</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dat moet gheschien in <rhyme label="b" type="m">mi</rhyme></l>
        <l id="s6:l3" met="3" type="-+">So wordet mi al <rhyme label="c" type="f">vergouden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Meer dan ick wercken <rhyme label="c" type="f" corresp="#s6:l3">soude</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Het onbecliuen vinde ick in <rhyme label="b" type="m" corresp="#s6:l2">mi</rhyme>.</l>
      </lg>
    </lg>
  </text>
