<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>183502</id>
    <date>
      <year-start>1789</year-start>
      <year-end>1789</year-end>
    </date>
    <tags/>
    <melody></melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Waarom zou men niet vrolyk <rhyme label="a" type="f">wezen</rhyme>.</l>
        <l id="s1:l2" met="4" type="-+">Al schoon gebukt, - Hoe ook <rhyme label="b" type="m">gedrukt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wordt Vryheid steeds door ons <rhyme label="a" type="f" corresp="#s1:l1">geprezen</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Zoo lang de Koning <rhyme label="c" type="m">leeft</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Men voor geen onheil <rhyme label="c" type="m" corresp="#s1:l4">beeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Vernoegt en bly in onze <rhyme label="a" type="f">Woning</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Bevryd van Slaaf, - Geëerd van <rhyme label="b" type="m">Graaf</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Beschermt ons een machtig <rhyme label="a" type="f" corresp="#s2:l1">Koning</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die Edelmoedig <rhyme label="c" type="m">denkt</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Ons weet de Vryheid <rhyme label="c" type="m" corresp="#s2:l4">schenkt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daarom laat ons maar Vrolyk <rhyme label="a" type="f">wezen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">De rust en vreê, - De liefde <rhyme label="b" type="m">mêe</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die alle rampspoed doet <rhyme label="a" type="f" corresp="#s3:l1">geneezen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Beminnen, volgens <rhyme label="c" type="m">plicht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Waar voor een Dwingland <rhyme label="c" type="m" corresp="#s3:l4">zwigt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Twist, het werktuig onzer <rhyme label="a" type="f">rampen</rhyme>.</l>
        <l id="s4:l2" met="4" type="-+">Verdoemen wy, - Aan onze <rhyme label="b" type="m">zy</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Nooit moet 'er Bato's Kroost mee <rhyme label="a" type="f" corresp="#s4:l1">kampen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Zo lang de Waereld <rhyme label="c" type="m">staat</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">De Vryheid boven <rhyme label="c" type="m" corresp="#s4:l4">gaat</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Laat ons dan onze vrye <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">ô Vryheid Schaar, - Slaan in <rhyme label="b" type="m">elkaar</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hoe ook verdrukt in deze <rhyme label="a" type="f" corresp="#s5:l1">Landen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">De tyd die naakt <rhyme label="c" type="m">gewis</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat 't VRYHEID BOVEN is. <rhyme label="c" type="m" corresp="#s5:l4">ZANG</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
