    <melody>O lusteloze maagd</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ô LUstelooze <rhyme label="a" type="m">Maegd</rhyme>:</l>
        <l id="s1:l2" met="3" type="-+">Die haer zieltje tot slaep <rhyme label="b" type="m">verwekt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wanneer de duister <rhyme label="c" type="m">nagt</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Het aerdrijk <rhyme label="b" type="m" corresp="#s1:l2">overtrekt</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">U pluime bed <rhyme label="d" type="m">bespreid</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ach! Iuffouw wild <rhyme label="e" type="m">ontfaen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hier koom ik voor u <rhyme label="f" type="m">deur</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Voor u slaepvenster <rhyme label="e" type="m" corresp="#s1:l6">staen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O Lustelooze <rhyme label="a" type="m">Ziel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Zieltje vol zoete <rhyme label="b" type="m">Min</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Hoe jaegt dat jeugdig <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Na de gunst van zijn <rhyme label="b" type="m" corresp="#s2:l2">Vrindin</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Hier leid die schoon <rhyme label="d" type="m">Godin</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Die zo door ’s Hemels <rhyme label="e" type="m">leeft</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die haer Lighaem <rhyme label="f" type="m">bemind</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Nooit aen haer minnaer <rhyme label="e" type="m" corresp="#s2:l6">geeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Haer te <rhyme label="a" type="m">derve</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat doet mijn zieltje wenze tot ’er <rhyme label="b" type="m">dood</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maer na die bly <rhyme label="c" type="m">ontfangst</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Om te ruste in myn zoete liefs <rhyme label="b" type="m" corresp="#s3:l2">schoot</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Die schoot die haer <rhyme label="d" type="m">bemind</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Gesloote lag een <rhyme label="e" type="m">Iuffrouw</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">Denk eensjes als ik <rhyme label="f" type="m">dorst</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Hoe garen dat ik <rhyme label="e" type="m" corresp="#s3:l6">wou</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Haer blanke zwane <rhyme label="a" type="m">hals</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Haer rookoraelde <rhyme label="b" type="m">mond</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Haer Boezem glat en <rhyme label="c" type="m">mals</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Twee Borsjes <rhyme label="b" type="m" corresp="#s4:l2">appelrond</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Die zag ik door een <rhyme label="d" type="m">scheur</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van een geborste <rhyme label="e" type="m">glas</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Ik wou dat ik van de <rhyme label="f" type="m">Nagt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">By haer gebanne <rhyme label="e" type="m" corresp="#s4:l6">was</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
