  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">DIt zijn de <rhyme label="a" type="f">zaken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Waar door dat wy niet te <rhyme label="b" type="m">recht</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Tot de vrientschap kunnen <rhyme label="a" type="f" corresp="#s1:l1">raken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die de Trouwheit t'zamen <rhyme label="b" type="m" corresp="#s1:l2">hecht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">'t Is om dat wy voor ons <rhyme label="c" type="m">deel</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Zoeken vrienden <rhyme label="c" type="m" corresp="#s1:l5">overveel</rhyme>,</l>
        <l id="s1:l7" met="2" type="+-">Als de <rhyme label="d" type="f">hoeren</rhyme>,</l>
        <l id="s1:l8" met="2" type="+-">Die <rhyme label="d" type="f" corresp="#s1:l7">vervoeren</rhyme></l>
        <l id="s1:l9" met="4" type="+-">Haar van trouwe scheiden <rhyme label="c" type="m" corresp="#s1:l5">heel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Dit is <rhyme label="a" type="f">onstaande</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Door ons <rhyme label="b" type="m">onbestandigheit</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die ons maakt tot dwaasheit <rhyme label="a" type="f" corresp="#s2:l1">gaande</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Om te zoeken <rhyme label="b" type="m" corresp="#s2:l2">nieuwigheit</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Waar door dat wy niet een <rhyme label="c" type="m">vriendt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Kunnen hebben die ons <rhyme label="c" type="m" corresp="#s2:l5">dient</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">Doch de <rhyme label="d" type="f">oogen</rhyme></l>
        <l id="s2:l8" met="2" type="+-"><rhyme label="d" type="f" corresp="#s2:l7">Onbedrogen</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Doen heel anders wantze <rhyme label="c" type="m" corresp="#s2:l5">zient</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Dit zijn de <rhyme label="a" type="f">wegen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Tot de rechte <rhyme label="b" type="m">vriendlijkheit</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Niet gelijk de beesten <rhyme label="a" type="f" corresp="#s3:l1">plegen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">In de veelheit die <rhyme label="b" type="m" corresp="#s3:l2">misleit</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Maar in 't weinige voor <rhyme label="c" type="m">wis</rhyme></l>
        <l id="s3:l6" met="4" type="+-">d'Alderbeste vrientschap <rhyme label="c" type="m" corresp="#s3:l5">is</rhyme>,</l>
        <l id="s3:l7" met="2" type="+-">Dan geeft <rhyme label="d" type="f">reden</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Weder <rhyme label="d" type="f" corresp="#s3:l7">reden</rhyme></l>
        <l id="s3:l9" met="4" type="+-">Als het licht uit <rhyme label="c" type="m" corresp="#s3:l5">duisternis</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Beek en <rhyme label="a" type="f">revieren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als die stroomen uit in <rhyme label="b" type="m">veel</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Zullen door zoo ruimte <rhyme label="a" type="f" corresp="#s4:l1">zwieren</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Zeer verslappen in 't <rhyme label="b" type="m" corresp="#s4:l2">geheel</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Zoo is 't ook met onze <rhyme label="c" type="m">ziel</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Die, al schoon 't haar lastig <rhyme label="c" type="m" corresp="#s4:l5">viel</rhyme></l>
        <l id="s4:l7" met="2" type="+-">Haar in <rhyme label="d" type="f">velen</rhyme></l>
        <l id="s4:l8" met="2" type="+-">Niet kan <rhyme label="d" type="f" corresp="#s4:l7">deelen</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Of verslapping volgt de <rhyme label="c" type="m" corresp="#s4:l5">hiel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Die vrientschap <rhyme label="a" type="f">zoeken</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Zoeken 't gene geeft <rhyme label="b" type="m">vermaak</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Maar de wijsheit doet <rhyme label="a" type="f" corresp="#s5:l1">verkloeken</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Datze wort een goede <rhyme label="b" type="m" corresp="#s5:l2">zaak</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Zy is zulken grooten <rhyme label="c" type="m">nut</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Datze is tot troost en <rhyme label="c" type="m" corresp="#s5:l5">stut</rhyme>,</l>
        <l id="s5:l7" met="2" type="+-">In haar <rhyme label="d" type="f">werken</rhyme></l>
        <l id="s5:l8" met="2" type="+-">Is te <rhyme label="d" type="f" corresp="#s5:l7">merken</rhyme></l>
        <l id="s5:l9" met="4" type="+-">Datze ons van quaat <rhyme label="c" type="m" corresp="#s5:l5">beschut</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Veel dan te <rhyme label="a" type="f">minnen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">En van veel bemint te <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ziet men klaarlijk dat goe <rhyme label="a" type="f" corresp="#s6:l1">zinnen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Niet kan redden uit de <rhyme label="b" type="m" corresp="#s6:l2">pijn</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Hierom houdt dan niet van <rhyme label="c" type="m">veel</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Maar van een vriend in 't <rhyme label="c" type="m" corresp="#s6:l5">geheel</rhyme>,</l>
        <l id="s6:l7" met="2" type="+-">Die kan <rhyme label="d" type="f">helpen</rhyme></l>
        <l id="s6:l8" met="2" type="+-">Ende <rhyme label="d" type="f" corresp="#s6:l7">stelpen</rhyme>,</l>
        <l id="s6:l9" met="4" type="+-">Anders is het <rhyme label="c" type="m" corresp="#s6:l5">tegendeel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
