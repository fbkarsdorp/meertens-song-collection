  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VEerblyt, verblyt, u alle <rhyme label="a" type="m">tyt</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Dat is ons euwige erven,, Euwige <rhyme label="b" type="f">erven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Getroost, en zonder vrees te <rhyme label="c" type="m">zyn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In leven en in <rhyme label="b" type="f" corresp="#s1:l2">sterven</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den Hemel wil, den Hemel <rhyme label="a" type="m">wil</rhyme></l>
        <l id="s2:l2" met="5" type="-+">Dat die hem dienen in deugden, Dien en in <rhyme label="b" type="f">vreugden</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Dat is der Engelen euwige <rhyme label="c" type="m">trant</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die zig in deugden <rhyme label="b" type="f" corresp="#s2:l2">verheugden</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De vreugde deugt (De deugt weer <rhyme label="a" type="m">vreugt</rhyme>)</l>
        <l id="s3:l2" met="5" type="-+">Het vrolyk hert maakt deugdig; Maakt ons <rhyme label="b" type="f">deugdig</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Dat weet den Hemel, daarom <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hy al zyn dienende <rhyme label="b" type="f" corresp="#s3:l2">vreugdig</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Hemel gaat, de aarde <rhyme label="a" type="m">staat</rhyme></l>
        <l id="s4:l2" met="5" type="-+">Zo vast niet als dees vreugde, als dees <rhyme label="b" type="f">vreugde</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Daar 's Hemels Zoon ons zielen <rhyme label="c" type="m">meed'</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ons herten mede <rhyme label="b" type="f" corresp="#s4:l2">verheugde</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Des Hemels zoon Quam uit zyn <rhyme label="a" type="m">Throon</rhyme></l>
        <l id="s5:l2" met="5" type="-+">Dien Hy van euwigheden, <rhyme label="b" type="f">euwigheden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Bezeten hadd', en bragt dit <rhyme label="c" type="m">Heil</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dit Heil van boven <rhyme label="b" type="f" corresp="#s5:l2">mede</rhyme>.</l>
        <l id="s5:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Het bloedig sweet, Dat liefde <rhyme label="a" type="m">deet</rhyme></l>
        <l id="s6:l2" met="5" type="-+">'t Gezegent lyf ontvlieten, deet <rhyme label="b" type="f">ontvlieten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Deet ons voor d'ongemeten <rhyme label="c" type="m">smert</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dees zalige vreugde <rhyme label="b" type="f" corresp="#s6:l2">genieten</rhyme>.</l>
        <l id="s6:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s6:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Des Hemels gunst, Des Hemels <rhyme label="a" type="m">gunst</rhyme></l>
        <l id="s7:l2" met="5" type="-+">Om schatten niet te kopen,, niet te <rhyme label="b" type="f">kopen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Komt als een Hemels <rhyme label="c" type="m">water-val</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ons zalig <rhyme label="b" type="f" corresp="#s7:l2">toegelopen</rhyme>.</l>
        <l id="s7:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s7:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De zonden al, en zonder <rhyme label="a" type="m">tal</rhyme></l>
        <l id="s8:l2" met="5" type="-+">Zyn goediglyk vergeven,, al <rhyme label="b" type="f">vergeven</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Wy hadden de euwige doot <rhyme label="c" type="m">verdient</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">En krygen het euwige <rhyme label="b" type="f" corresp="#s8:l2">leven</rhyme>.</l>
        <l id="s8:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s8:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Des Hemels Heer, Ons schat en <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s9:l2" met="5" type="-+">Gezontheit, rust en vrede, Rust en <rhyme label="b" type="f">vrede</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">En hebben wy hier niet met <rhyme label="c" type="m">al</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Met Hem zyn wy te <rhyme label="b" type="f" corresp="#s9:l2">vrede</rhyme>.</l>
        <l id="s9:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s9:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De aart is ons, den Hemel <rhyme label="a" type="m">ons</rhyme>:</l>
        <l id="s10:l2" met="5" type="-+">Wat zoud' ons meer gelusten,, Meer <rhyme label="b" type="f">gelusten</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Dees aarde is ons een kort <rhyme label="c" type="m">vertrek</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Den Hemel ons euwige <rhyme label="b" type="f" corresp="#s10:l2">ruste</rhyme>.</l>
        <l id="s10:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s10:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En mensen vee,, En Engelen <rhyme label="a" type="m">mee</rhyme>,</l>
        <l id="s11:l2" met="5" type="-+">En voor-en tegen spoeden,, Zegen en <rhyme label="b" type="f">roeden</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Laat werken, alzo 't werken <rhyme label="c" type="m">wil</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">'t Moet werken ons ten <rhyme label="b" type="f" corresp="#s11:l2">goeden</rhyme>.</l>
        <l id="s11:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s11:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Den Hemel zelf, Dat schoon <rhyme label="a" type="m">gewelf</rhyme>,</l>
        <l id="s12:l2" met="5" type="-+">Daar 't dag is zonder nagten,, Zonder <rhyme label="b" type="f">nagten</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Is 't hoog vertrek, daar 't <rhyme label="c" type="m">Engele-Choor</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Al zingend' ons <rhyme label="b" type="f" corresp="#s12:l2">verwagten</rhyme>.</l>
        <l id="s12:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s12:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ons Vader leeft, Die zig ons <rhyme label="a" type="m">geeft</rhyme></l>
        <l id="s13:l2" met="5" type="-+">En met hem alle dingen,, Alle <rhyme label="b" type="f">dingen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">En zegt ons nooddruft toe, op <rhyme label="c" type="m">dat</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Wy zorgloos zouden <rhyme label="b" type="f" corresp="#s13:l2">zingen</rhyme>.</l>
        <l id="s13:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s13:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Des Hemels Gunst,, Leert ons de <rhyme label="a" type="m">kunst</rhyme>;</l>
        <l id="s14:l2" met="5" type="-+">In 't kleinsten ons te ly'en, Ons te <rhyme label="b" type="f">lyen</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">Dus zonder pragt, en <rhyme label="c" type="m">overdaat</rhyme></l>
        <l id="s14:l4" met="3" type="-+">En zonder <rhyme label="b" type="f" corresp="#s14:l2">lekkernyen</rhyme></l>
        <l id="s14:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s14:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Der menschen haat,, Of nyt, of <rhyme label="a" type="m">smaat</rhyme></l>
        <l id="s15:l2" met="5" type="-+">En kunnen ons bedroeven, Ons <rhyme label="b" type="f">bedroeven</rhyme>:</l>
        <l id="s15:l3" met="4" type="-+">Hebben wy maar des Hemels <rhyme label="c" type="m">gunst</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Niet anders wy <rhyme label="b" type="f" corresp="#s15:l2">behoeven</rhyme>,</l>
        <l id="s15:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s15:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Nog haat, nog nyt, Nog wraak, nog <rhyme label="a" type="m">spyt</rhyme></l>
        <l id="s16:l2" met="5" type="-+">Ons tot haar oefening tronen,, Tot haar <rhyme label="b" type="f">tronen</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Maar als wy met een lugtigen <rhyme label="c" type="m">zin</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Het quaat-met goet-doen <rhyme label="b" type="f" corresp="#s16:l2">lonen</rhyme></l>
        <l id="s16:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s16:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Maar hola! maar! Wat hoor ik <rhyme label="a" type="m">daar</rhyme>?</l>
        <l id="s17:l2" met="5" type="-+">Wat is het? schreijen, of reijen, Schreijen of <rhyme label="b" type="f">reijen</rhyme>?</l>
        <l id="s17:l3" met="4" type="-+">De werelt noemt het reijen: <rhyme label="c" type="m">maar</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Des werelts reijen is <rhyme label="b" type="f" corresp="#s17:l2">schreijen</rhyme>.</l>
        <l id="s17:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s17:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">'t Knetter-getier,, Van 't <rhyme label="a" type="m">door'nen-vier</rhyme></l>
        <l id="s18:l2" met="5" type="-+">Wy konnen maar veragten, Wy <rhyme label="b" type="f">veragten</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Schatten die vrolyke dagen <rhyme label="c" type="m">al</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Voor duist're donkere <rhyme label="b" type="f" corresp="#s18:l2">nagten</rhyme>.</l>
        <l id="s18:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s18:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Zy al de vreugt,, En al 't <rhyme label="a" type="m">geneugt</rhyme>,</l>
        <l id="s19:l2" met="5" type="-+">Des Werelts opgelopen, <rhyme label="b" type="f">Opgelopen</rhyme>:</l>
        <l id="s19:l3" met="4" type="-+">Nog wouden wy van d'onzen <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s19:l4" met="3" type="-+">En aas daar voor <rhyme label="b" type="f" corresp="#s19:l2">verkopen</rhyme>.</l>
        <l id="s19:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s19:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Haar zingen al,, Haar springen <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s20:l2" met="5" type="-+">Is huppelen na der hellen, Na der <rhyme label="b" type="f">hellen</rhyme>:</l>
        <l id="s20:l3" met="4" type="-+">Haar glans is glas, haar rust is <rhyme label="c" type="m">roest</rhyme>,</l>
        <l id="s20:l4" met="3" type="-+">En al haar quelen maar <rhyme label="b" type="f" corresp="#s20:l2">quellen</rhyme>.</l>
        <l id="s20:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s20:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Begerig hert,, Dat mager <rhyme label="a" type="m">wert</rhyme>,</l>
        <l id="s21:l2" met="5" type="-+">Door 't gieren na veel schatten, Na veel <rhyme label="b" type="f">schatten</rhyme>,</l>
        <l id="s21:l3" met="4" type="-+">Dewyl gy onverzadigt <rhyme label="c" type="m">zult</rhyme></l>
        <l id="s21:l4" met="3" type="-+">Na wint met zorrege <rhyme label="b" type="f" corresp="#s21:l2">vatten</rhyme>,</l>
        <l id="s21:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s21:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">En al u goet,, Daar al u <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s22:l2" met="5" type="-+">Op stont, u in dit leven, Zal <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s22:l3" met="4" type="-+">Den rietstafbreekt, den rots <rhyme label="c" type="m">beswykt</rhyme>,</l>
        <l id="s22:l4" met="3" type="-+">Het herte de lendene <rhyme label="b" type="f" corresp="#s22:l2">beven</rhyme>,</l>
        <l id="s22:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s22:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Dat dronken hooft, Van zin <rhyme label="a" type="m">berooft</rhyme>,</l>
        <l id="s23:l2" met="5" type="-+">Laat in zyn schyn-vreugt razen,, Tieren en <rhyme label="b" type="f">razen</rhyme>,</l>
        <l id="s23:l3" met="4" type="-+">Dewyl hy zinkt, en rolt en <rhyme label="c" type="m">dolt</rhyme>,</l>
        <l id="s23:l4" met="3" type="-+">De wysheit in de <rhyme label="b" type="f" corresp="#s23:l2">glazen</rhyme>;</l>
        <l id="s23:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s23:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Laat dollen kop,, Zyn vollen <rhyme label="a" type="m">kop</rhyme>,</l>
        <l id="s24:l2" met="5" type="-+">Uit leed'gen met vermaken, Met <rhyme label="b" type="f">vermaken</rhyme>,</l>
        <l id="s24:l3" met="4" type="-+">En dan wel dronken, ronken Daar <rhyme label="c" type="m">heen</rhyme>:</l>
        <l id="s24:l4" met="3" type="-+">Wy zullen wel nugtere <rhyme label="b" type="f" corresp="#s24:l2">waken</rhyme>.</l>
        <l id="s24:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s24:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Gen sterken drank,, Geen rook of <rhyme label="a" type="m">stank</rhyme>,</l>
        <l id="s25:l2" met="5" type="-+">Bedwelmen ons de zinnen, Ons de <rhyme label="b" type="f">zinnen</rhyme>;</l>
        <l id="s25:l3" met="4" type="-+">Maar zyn wy dronken van Water en <rhyme label="c" type="m">Bloet</rhyme></l>
        <l id="s25:l4" met="3" type="-+">Dan eerst ons zinnen <rhyme label="b" type="f" corresp="#s25:l2">beginnen</rhyme>.</l>
        <l id="s25:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s25:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">Dien armen quant,, Die slegte <rhyme label="a" type="m">dant</rhyme>,</l>
        <l id="s26:l2" met="5" type="-+">Og! og! de dwaze banden, Dwaze <rhyme label="b" type="f">banden</rhyme></l>
        <l id="s26:l3" met="4" type="-+">Zyn haar om 't hert geslagen og! <rhyme label="c" type="m">og</rhyme>!</l>
        <l id="s26:l4" met="3" type="-+">Wel lateze klagen en <rhyme label="b" type="f" corresp="#s26:l2">branden</rhyme>.</l>
        <l id="s26:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s26:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="-+">Wy weten hier,, Van min nog <rhyme label="a" type="m">vier</rhyme>,</l>
        <l id="s27:l2" met="5" type="-+">Behalven 't vier van boven,, 't Vier van <rhyme label="b" type="f">boven</rhyme>.</l>
        <l id="s27:l3" met="4" type="-+">Lieven wy Jezus, hy lieft ons <rhyme label="c" type="m">weer</rhyme>,</l>
        <l id="s27:l4" met="3" type="-+">Wy lieven, wy leven, wy <rhyme label="b" type="f" corresp="#s27:l2">loven</rhyme>.</l>
        <l id="s27:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s27:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="4" type="-+">Hoe zufje daar, Hoe zal dat <rhyme label="a" type="m">hair</rhyme>,</l>
        <l id="s28:l2" met="5" type="-+">Hoe zal den kronkel leggen, kronkel <rhyme label="b" type="f">leggen</rhyme></l>
        <l id="s28:l3" met="4" type="-+">Met hals, en rug, en arme <rhyme label="c" type="m">bloot</rhyme>:</l>
        <l id="s28:l4" met="3" type="-+">Laat haar dat <rhyme label="b" type="f" corresp="#s28:l2">overleggen</rhyme>.</l>
        <l id="s28:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s28:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="4" type="-+">Ons hoog gewaat,, Naar onzen <rhyme label="a" type="m">Staat</rhyme>,</l>
        <l id="s29:l2" met="5" type="-+">En zyn geen diamanten, <rhyme label="b" type="f">Diamanten</rhyme>.</l>
        <l id="s29:l3" met="4" type="-+">Maar 't Hemels çierzel van de <rhyme label="c" type="m">Deugt</rhyme></l>
        <l id="s29:l4" met="3" type="-+">Dat blinkt, aan allen <rhyme label="b" type="f" corresp="#s29:l2">kanten</rhyme>.</l>
        <l id="s29:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s29:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="4" type="-+">Met dankbare oog, Wy zien, die <rhyme label="a" type="m">hoog</rhyme></l>
        <l id="s30:l2" met="5" type="-+">Gezeten, zig besteden, t'Onzen <rhyme label="b" type="f">vreden</rhyme>,</l>
        <l id="s30:l3" met="4" type="-+">En als zy rusteloos waken voor <rhyme label="c" type="m">ons</rhyme></l>
        <l id="s30:l4" met="3" type="-+">Voor onze <rhyme label="b" type="f" corresp="#s30:l2">zorgloosheden</rhyme></l>
        <l id="s30:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s30:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s31" type="stanza">
        <l id="s31:l1" met="4" type="-+">Den Leeu het Lam,, Uit Davits <rhyme label="a" type="m">stam</rhyme>,</l>
        <l id="s31:l2" met="5" type="-+">Schepper en hoede der mensen, Hoede der <rhyme label="b" type="f">mensen</rhyme></l>
        <l id="s31:l3" met="4" type="-+">Is (wy geloven het) alles, en <rhyme label="c" type="m">wat</rhyme></l>
        <l id="s31:l4" met="3" type="-+">Wy kunnen, of denken of <rhyme label="b" type="f" corresp="#s31:l2">wensen</rhyme>.</l>
        <l id="s31:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s31:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s32" type="stanza">
        <l id="s32:l1" met="4" type="-+">Met deze lust,, Met deze <rhyme label="a" type="m">rust</rhyme>,</l>
        <l id="s32:l2" met="5" type="-+">Zo vol van eer en staten, Eer en <rhyme label="b" type="f">staten</rhyme>,</l>
        <l id="s32:l3" met="4" type="-+">Zo ryk beschattet, zo wel <rhyme label="c" type="m">vernoegt</rhyme></l>
        <l id="s32:l4" met="3" type="-+">Zo weelderig uit <rhyme label="b" type="f" corresp="#s32:l2">gelaten</rhyme>,</l>
        <l id="s32:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s32:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s33" type="stanza">
        <l id="s33:l1" met="4" type="-+">Met deze spys,, Vol <rhyme label="a" type="m">lekkerny's</rhyme>,</l>
        <l id="s33:l2" met="5" type="-+">Met dezen drank beschonken, Zo <rhyme label="b" type="f">beschonken</rhyme>,</l>
        <l id="s33:l3" met="4" type="-+">Met deze kost'lykheden <rhyme label="c" type="m">verçiert</rhyme>,</l>
        <l id="s33:l4" met="3" type="-+">Met deze gewaden aan 't <rhyme label="b" type="f" corresp="#s33:l2">pronken</rhyme>,</l>
        <l id="s33:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s33:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s34" type="stanza">
        <l id="s34:l1" met="4" type="-+">Als eens de werelt,, Als eens de <rhyme label="a" type="m">werelt</rhyme>,</l>
        <l id="s34:l2" met="5" type="-+">Zig jammerlyk bedrogen, Zig <rhyme label="b" type="f">bedrogen</rhyme></l>
        <l id="s34:l3" met="4" type="-+">Zal vinden, al haar winst maar <rhyme label="c" type="m">wint</rhyme>;</l>
        <l id="s34:l4" met="3" type="-+">En al haar liederen <rhyme label="b" type="f" corresp="#s34:l2">logen</rhyme>.</l>
        <l id="s34:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s34:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s35" type="stanza">
        <l id="s35:l1" met="4" type="-+">Als eer en staat,, En gunst <rhyme label="a" type="m">vergaat</rhyme>;</l>
        <l id="s35:l2" met="5" type="-+">Haar schat voor dief of mot is, Of verrot <rhyme label="b" type="f">is</rhyme>;</l>
        <l id="s35:l3" met="4" type="-+">Haar min met schoonheits val <rhyme label="c" type="m">vervalt</rhyme>;</l>
        <l id="s35:l4" met="3" type="-+">De wyze nu ziet, dat hy zot <rhyme label="b" type="f" corresp="#s35:l2">is</rhyme>;</l>
        <l id="s35:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s35:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s36" type="stanza">
        <l id="s36:l1" met="4" type="-+">En als dien storm,, Dien fellen <rhyme label="a" type="m">worm</rhyme>,</l>
        <l id="s36:l2" met="5" type="-+">Van 't wisse Gewis zal knagen, Wis zal <rhyme label="b" type="f">knagen</rhyme>;</l>
        <l id="s36:l3" met="4" type="-+">De duist're nare valeije daar <rhyme label="c" type="m">is</rhyme></l>
        <l id="s36:l4" met="3" type="-+">Het einde der welige <rhyme label="b" type="f" corresp="#s36:l2">dagen</rhyme>;</l>
        <l id="s36:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s36:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s37" type="stanza">
        <l id="s37:l1" met="4" type="-+">Ons herte rust,, Op schat nog <rhyme label="a" type="m">lust</rhyme>,</l>
        <l id="s37:l2" met="5" type="-+">Op gunst, op eer nog staten, Eer nog <rhyme label="b" type="f">staten</rhyme>,</l>
        <l id="s37:l3" met="4" type="-+">Wil 't blyven 't kan, wil 't vliegen het <rhyme label="c" type="m">mag</rhyme>,</l>
        <l id="s37:l4" met="3" type="-+">Wy kunnen het hebben, en <rhyme label="b" type="f" corresp="#s37:l2">laten</rhyme>.</l>
        <l id="s37:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s37:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s38" type="stanza">
        <l id="s38:l1" met="4" type="-+">Zo ons dit Goet,, Den Hemel <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s38:l2" met="5" type="-+">Tot ons genot toe-vlieten, Tot ons <rhyme label="b" type="f">vlieten</rhyme>:</l>
        <l id="s38:l3" met="4" type="-+">Wy geven 't Hem ten dienste <rhyme label="c" type="m">weerom</rhyme></l>
        <l id="s38:l4" met="3" type="-+">En 't hem ter eren <rhyme label="b" type="f" corresp="#s38:l2">genieten</rhyme>.</l>
        <l id="s38:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s38:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s39" type="stanza">
        <l id="s39:l1" met="4" type="-+">En neemt Hy 't weg,, En neemt hy 't <rhyme label="a" type="m">weg</rhyme>,</l>
        <l id="s39:l2" met="5" type="-+">Nog wy het duldig dogen, Duldig <rhyme label="b" type="f">dogen</rhyme>;</l>
        <l id="s39:l3" met="4" type="-+">Wy ligten ons dies te lugtiger <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s39:l4" met="3" type="-+">En vliegen te vlugger om <rhyme label="b" type="f" corresp="#s39:l2">hoge</rhyme>.</l>
        <l id="s39:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s39:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s40" type="stanza">
        <l id="s40:l1" met="4" type="-+">In menschen haat,, In spot en <rhyme label="a" type="m">smaat</rhyme>,</l>
        <l id="s40:l2" met="5" type="-+">In armoed', zober leven, Zober <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s40:l3" met="4" type="-+">Is lyt lyk hen die Koningen <rhyme label="c" type="m">zynd'</rhyme>,</l>
        <l id="s40:l4" met="3" type="-+">Haar lust (dat zy willen) maar <rhyme label="b" type="f" corresp="#s40:l2">geven</rhyme>.</l>
        <l id="s40:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s40:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s41" type="stanza">
        <l id="s41:l1" met="4" type="-+">Het bang gemoet,, Der hellen <rhyme label="a" type="m">gloet</rhyme>,</l>
        <l id="s41:l2" met="5" type="-+">Het knagen der gewissen,, Der <rhyme label="b" type="f">gewissen</rhyme>,</l>
        <l id="s41:l3" met="4" type="-+">Kan 't onweerdeerlyk <rhyme label="c" type="m">Gode-bloet</rhyme></l>
        <l id="s41:l4" met="3" type="-+">Bezadigen, vredigen, <rhyme label="b" type="f" corresp="#s41:l2">slissen</rhyme>.</l>
        <l id="s41:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s41:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s42" type="stanza">
        <l id="s42:l1" met="4" type="-+">Ja koom de doot,, Ja koom de <rhyme label="a" type="m">doot</rhyme>,</l>
        <l id="s42:l2" met="5" type="-+">En laat ons, met dit leven, 't Al <rhyme label="b" type="f">begeven</rhyme>:</l>
        <l id="s42:l3" met="4" type="-+">Dit duist're nare valeijen <rhyme label="c" type="m">alleen</rhyme>,</l>
        <l id="s42:l4" met="3" type="-+">Door wandelen wy end' en <rhyme label="b" type="f" corresp="#s42:l2">beven</rhyme>.</l>
        <l id="s42:l5" met="3" type="+-">Laat ons vrolyk zyn Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s42:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
      <lg id="s43" type="stanza">
        <l id="s43:l1" met="4" type="-+">Want in de doot,, De bangste <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s43:l2" met="5" type="-+">Is Godes zoon ons 't leven, Ons het <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s43:l3" met="4" type="-+">Wy steken 't hooft ten Kerreken <rhyme label="c" type="m">uit</rhyme></l>
        <l id="s43:l4" met="3" type="-+">Om boven de wolken te <rhyme label="b" type="f" corresp="#s43:l2">sweven</rhyme>.</l>
        <l id="s43:l5" met="3" type="+-">Laat ons vrolyk zyn, Vrolyk, <rhyme label="d" type="m">vrolyk</rhyme>,</l>
        <l id="s43:l6" met="2" type="+-">Laat ons vrolyk zyn, vrolyk zyn, Vrolyk <rhyme label="e" type="m">zyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
