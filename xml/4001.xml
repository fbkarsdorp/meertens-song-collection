    <melody>De lustelijke mei is nu in de tijd</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIe sal mi toch helpen <rhyme label="a" type="f">clagen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Al minen verloren <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Consciencie die wil altijt <rhyme label="a" type="f" corresp="#s1:l1">knagen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Si en gheeft mi gheen <rhyme label="b" type="m" corresp="#s1:l2">respijt</rhyme></l>
        <l id="s1:l5" met="4" type="-+">In gheen dingen ben ic <rhyme label="b" type="m" corresp="#s1:l2">verblijt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Die hier beneden <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Ick bid v ghenade <rhyme label="d" type="f">heere</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Die sculden sijn al <rhyme label="c" type="m" corresp="#s1:l6">mijn</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Had ic mi seluen wel <rhyme label="a" type="f">bedocht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ten waer mi nu gheen <rhyme label="b" type="m">noot</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Die heere hadde gaerne in my <rhyme label="a" type="f" corresp="#s2:l1">ghewrocht</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Sijn gracie is alsoe <rhyme label="b" type="m" corresp="#s2:l2">groot</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Nu vindic mi van duechden <rhyme label="b" type="m" corresp="#s2:l2">bloot</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hoe soude ick blide <rhyme label="c" type="m">ghesijn</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Ick bid v ghenade <rhyme label="d" type="f">heere</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Die sculden sijn al <rhyme label="c" type="m" corresp="#s2:l6">mijn</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Had ic van minen iongen <rhyme label="a" type="f">tijt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Altijt na die duecht <rhyme label="b" type="m">ghestaen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">so waren nature en gheest <rhyme label="a" type="f" corresp="#s3:l1">verblijt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Nu ben ick met druck <rhyme label="b" type="m" corresp="#s3:l2">beuaen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Dat heb ic mi seluen al <rhyme label="b" type="m" corresp="#s3:l2">ghedaen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Hoe soude ick blide <rhyme label="c" type="m">ghesijn</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Ick bid v ghenade <rhyme label="d" type="f">heere</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Die sculden sijn al <rhyme label="c" type="m" corresp="#s3:l6">mijn</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ic wil voort gaen <rhyme label="a" type="f">besteden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In duechden minen corten <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Ende soecken troost aen <rhyme label="a" type="f" corresp="#s4:l1">Gode</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Eer mi die doot <rhyme label="b" type="m" corresp="#s4:l2">verblijt</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Si en sal mi gheuen gheen <rhyme label="b" type="m" corresp="#s4:l2">respijt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Hoe soude ick blide <rhyme label="c" type="m">ghesijn</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Ick bid v ghenade <rhyme label="d" type="f">heere</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Die sculden sijn al <rhyme label="c" type="m" corresp="#s4:l6">mijn</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Gods goetheyt is al <rhyme label="a" type="f">gemeene</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ick wil in hopen <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Const ic mijn sonden <rhyme label="a" type="f" corresp="#s5:l1">beweenen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Hi soude mi in gratien <rhyme label="b" type="m" corresp="#s5:l2">ontfaen</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Al had ic noch so veel <rhyme label="b" type="m" corresp="#s5:l2">misdaen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dan soude ick blide <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Ick bid v ghenade <rhyme label="d" type="f">heere</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Die sculden sijn al <rhyme label="c" type="m" corresp="#s5:l6">mijn</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Had ic die gracie ons <rhyme label="a" type="f">heeren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">So waer mijn siele <rhyme label="b" type="m">gheuoet</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Si soude mi dwingen <rhyme label="a" type="f" corresp="#s6:l1">leeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Minen ongestoruen <rhyme label="b" type="m" corresp="#s6:l2">moet</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Const icken worpen onder die <rhyme label="b" type="m" corresp="#s6:l2">voet</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">So soude ick blide <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Ick bid v ghenade <rhyme label="d" type="f">heere</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Die sculden sijn al <rhyme label="c" type="m" corresp="#s6:l6">mijn</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nu wil ick goelijck <rhyme label="a" type="f">liden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Pine / druck / en <rhyme label="b" type="m">verdriet</rhyme> /</l>
        <l id="s7:l3" met="4" type="-+">Conde ic daer in <rhyme label="a" type="f" corresp="#s7:l1">verbliden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">So waer mi wel <rhyme label="b" type="m" corresp="#s7:l2">gheschiet</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Si en quamen daer sonder liden <rhyme label="b" type="m" corresp="#s7:l2">niet</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Die daer bouen <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Ick bid v ghenade <rhyme label="d" type="f">heere</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Die sculden sijn al <rhyme label="c" type="m" corresp="#s7:l6">mijn</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ick ben in een <rhyme label="a" type="f">valleye</rhyme></l>
        <l id="s8:l2" met="3" type="-+">God is mijn <rhyme label="b" type="m">toeuerlaet</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Ic soude mi gaerne <rhyme label="a" type="f" corresp="#s8:l1">vermeyen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Daer alle dinc in rusten <rhyme label="b" type="m" corresp="#s8:l2">staet</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Niet eer en wort mijn siel <rhyme label="b" type="m" corresp="#s8:l2">versaet</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Dan sal ick blide <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Ick bid v ghenade <rhyme label="d" type="f">heere</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Die sculden sijn al <rhyme label="c" type="m" corresp="#s8:l6">mijn</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Mocht mijnder siele <rhyme label="a" type="f">ghebueren</rhyme></l>
        <l id="s9:l2" met="3" type="-+">So waer si wt alder <rhyme label="b" type="m">noot</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Duysent iaer schijnt niet een <rhyme label="a" type="f" corresp="#s9:l1">vre</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Die bliscap is daer also <rhyme label="b" type="m" corresp="#s9:l2">groot</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Sij scouwen daer die waerheyt <rhyme label="b" type="m" corresp="#s9:l2">bloot</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Sij mogen wel blide <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Ic bid v ghenade <rhyme label="d" type="f">heere</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Die schulden sijn al <rhyme label="c" type="m" corresp="#s9:l6">mijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
