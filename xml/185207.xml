    <tags/>
    <melody>Slaapt gij nog mijn welbeminde</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Heldre Maan, gy spreid uw <rhyme label="a" type="f">straalen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Aan den kalmen <rhyme label="b" type="m">hemelboog</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Gy verzilvert thans de <rhyme label="a" type="f" corresp="#s1:l1">baaren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En uw glans verligt ons <rhyme label="b" type="m" corresp="#s1:l2">oog</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Hy speelt langs de blanke <rhyme label="c" type="f">zeilen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Schynt op steven, roer, en <rhyme label="d" type="m">wand</rhyme>;</l>
        <l id="s1:l7" met="4" type="+-">Hy vertoont, by <rhyme label="e" type="f">avondschemer</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Flaauw het vergelegen <rhyme label="d" type="m" corresp="#s1:l6">strand</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">By het zagt geklots der <rhyme label="a" type="f">golven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En het ruisschen van den <rhyme label="b" type="m">wind</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Zeilen wy, bevryd van <rhyme label="a" type="f" corresp="#s2:l1">kommer</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Wyl men storm noch klippen <rhyme label="b" type="m" corresp="#s2:l2">vindt</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">ô Hoe lieflyk is deeze <rhyme label="c" type="f">avond</rhyme>!</l>
        <l id="s2:l6" met="4" type="+-">ô Hoe vreedzaam is <rhyme label="d" type="m">natuur</rhyme>!</l>
        <l id="s2:l7" met="4" type="+-">By dit gunstig helder <rhyme label="e" type="f">weder</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Schynt de reis ons kort van <rhyme label="d" type="m" corresp="#s2:l6">duur</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Smaakt de Landman 't waar <rhyme label="a" type="f">genoegen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Op zyn' vruchtbren <rhyme label="b" type="m">akkergrond</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Welk genoegen smaakt de <rhyme label="a" type="f" corresp="#s3:l1">Zeeman</rhyme></l>
        <l id="s3:l4" met="4" type="+-">In een' kalmen <rhyme label="b" type="m" corresp="#s3:l2">avondstond</rhyme>!</l>
        <l id="s3:l5" met="4" type="+-">De een' beploegt zyn' stillen <rhyme label="c" type="f">akker</rhyme></l>
        <l id="s3:l6" met="4" type="+-">De ander ploegt de woeste <rhyme label="d" type="m">zee</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Beiden zyn zy nu <rhyme label="e" type="f">beveiligd</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Door 't genot der lieve <rhyme label="d" type="m" corresp="#s3:l6">vreê</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Lieve vreê! Ja, door uw <rhyme label="a" type="f">zegen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Stevent weer deez' <rhyme label="b" type="m">handelvloot</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">En geen roovers <rhyme label="a" type="f" corresp="#s4:l1">oorlogsdonder</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Brengt de kielen meer in <rhyme label="b" type="m" corresp="#s4:l2">nood</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">'t Is nu vriend, in plaats van <rhyme label="c" type="f">vyand</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dien men overal <rhyme label="d" type="m">ontmoet</rhyme>;</l>
        <l id="s4:l7" met="4" type="+-">Neêrlands vlag, in top <rhyme label="e" type="f">geheessen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Praalt weêr vrolyk langs den <rhyme label="d" type="m" corresp="#s4:l6">vloed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Vreedzaame avond; door uw <rhyme label="a" type="f">luister</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Zyt gy vreedes <rhyme label="b" type="m">evenbeeld</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Die óók, door haar' stillen <rhyme label="a" type="f" corresp="#s5:l1">luister</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ieders oog en zinnen <rhyme label="b" type="m" corresp="#s5:l2">streelt</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Dat haar zegenryk <rhyme label="c" type="f">vermogen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Lang van duur, ja, eeuwig <rhyme label="d" type="m">zy</rhyme>!</l>
        <l id="s5:l7" met="4" type="+-">Zo vermeêr gestaâg de <rhyme label="e" type="f">welvaart</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Der Bataafsche <rhyme label="d" type="m" corresp="#s5:l6">zeevaardy</rhyme>.</l>
      </lg>
    </lg>
  </text>
