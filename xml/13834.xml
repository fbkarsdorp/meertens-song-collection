  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">IEuchdigh volckje ras, ras, <rhyme label="a" type="m">ras</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Binnen Haerlems <rhyme label="b" type="f">mueren</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Elck die brengt te pas, pas, <rhyme label="a" type="m" corresp="#s1:l1">pas</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">So wat vreemde <rhyme label="b" type="f" corresp="#s1:l2">kueren</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">‘t Is, ‘t is, ‘t is <rhyme label="c" type="m">Vasten-Avondts-dagh</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Die al de Stadt wel vieren <rhyme label="c" type="m" corresp="#s1:l5">magh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Rommelt op de pot, pot, <rhyme label="a" type="m">pot</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Gaet in <rhyme label="b" type="f">Masqueraden</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Speelt nu vry de sot, sot, <rhyme label="a" type="m" corresp="#s2:l1">sot</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Maeckt om ‘t best <rhyme label="b" type="f" corresp="#s2:l2">bravaden</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">‘t Is, ‘t is, ‘t is <rhyme label="c" type="m">Vasten-Avondts-dagh</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die al de Stadt wel vyeren <rhyme label="c" type="m" corresp="#s2:l5">mach</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Brenght het Yser hier, hier, <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Teert als groote <rhyme label="b" type="f">Heeren</rhyme>:</l>
        <l id="s3:l3" met="3" type="+-">Slaet de Pan te vyer, vyer, <rhyme label="a" type="m" corresp="#s3:l1">vyer</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Wilt maer lustigh <rhyme label="b" type="f" corresp="#s3:l2">smeeren</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">‘t Is, ‘t is, ‘t is <rhyme label="c" type="m">Vasten-Avondts-dagh</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Die al de Stadt wel vyeren <rhyme label="c" type="m" corresp="#s3:l5">mach</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Nu een schortel-doeck, doeck, <rhyme label="a" type="m">doeck</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Voor de Knechts te <rhyme label="b" type="f">draghen</rhyme>.</l>
        <l id="s4:l3" met="3" type="+-">Vrijsters gaet en soeck, soeck, <rhyme label="a" type="m" corresp="#s4:l1">soeck</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Wie ‘t u lust te <rhyme label="b" type="f" corresp="#s4:l2">vraghen</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">‘t Is, ‘t is, ‘t is <rhyme label="c" type="m">Vasten-Avondts-dagh</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Die al de Stadt wel vyeren <rhyme label="c" type="m" corresp="#s4:l5">mach</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Hippelt op, en springt, springt, <rhyme label="a" type="m">springt</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Laet de snaren <rhyme label="b" type="f">klincken</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">En daer onder singht, singht, <rhyme label="a" type="m" corresp="#s5:l1">singht</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Om eens op te <rhyme label="b" type="f" corresp="#s5:l2">drincken</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Tot, tot, tot afscheydt voor het <rhyme label="c" type="m">lest</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Terwijl het spul is op sijn <rhyme label="c" type="m" corresp="#s5:l5">best</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
