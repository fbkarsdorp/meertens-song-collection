<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11808</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Te mei als alle vogels zingen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Christus op den Bergh <rhyme label="a" type="m">gegaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Om Godt alleen te bidden <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hy sijne Jongers <rhyme label="b" type="f">laste</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat sy van strandt, na 't ander <rhyme label="c" type="m">landt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Te over-varen <rhyme label="b" type="f" corresp="#s1:l3">pasten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy swierven midden in de <rhyme label="a" type="m">Zee</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Het was voorwaer een bange <rhyme label="a" type="m" corresp="#s2:l1">ree</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De stroom vocht mette <rhyme label="b" type="f">winden</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Gepranght door schrick, elck <rhyme label="c" type="m">oogenblick</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat die hun sou <rhyme label="b" type="f" corresp="#s2:l3">verslinden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Doch Iesus quam des nachts by <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En wandlend' over golv' en <rhyme label="a" type="m" corresp="#s3:l1">baer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo kreeten sy vol <rhyme label="b" type="f">vreese</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Wel is 't een roock, of een <rhyme label="c" type="m">gespoock</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Och wie mach dit doch <rhyme label="b" type="f" corresp="#s3:l3">wesen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer Iesus sprack haer vriend'lijck <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Zijt wel getroost en frisch te <rhyme label="a" type="m" corresp="#s4:l1">moe'</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ick ben het, wilt niet <rhyme label="b" type="f">schroomen</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Is 't u begeer, riep Petrus, <rhyme label="c" type="m">Heer</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">Soo wil ick tot u <rhyme label="b" type="f" corresp="#s4:l3">komen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy riep komt vrylijck tot my <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Stracks Petrus uyt de Schuyt <rhyme label="a" type="m" corresp="#s5:l1">gegaen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Trat moedigh op de <rhyme label="b" type="f">baren</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Maer windt en zee, noch gantsch <rhyme label="c" type="m">t'onvree</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Die deden hem <rhyme label="b" type="f" corresp="#s5:l3">vervaren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy kreet seer bangh, Heer my <rhyme label="a" type="m">behoet</rhyme>!</l>
        <l id="s6:l2" met="4" type="-+">Eer ick versinck in dese <rhyme label="a" type="m" corresp="#s6:l1">vloet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wilt my u hulpe <rhyme label="b" type="f">schencken</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">'t En zy u handt, doet <rhyme label="c" type="m">onderstandt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Soo moet ick hier <rhyme label="b" type="f" corresp="#s6:l3">verdrencken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy reyckte hem sijn <rhyme label="a" type="m">rechter-handt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En sprack, o swack en kleyn <rhyme label="a" type="m" corresp="#s7:l1">verstandt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Waer door zijt ghy <rhyme label="b" type="f">besweecken</rhyme>?</l>
        <l id="s7:l4" met="4" type="-+">Gelooft ghy niet, dat in <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Mijn hulp niet sal <rhyme label="b" type="f" corresp="#s7:l3">ontbreecken</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sy zijn het Scheepken in <rhyme label="a" type="m">getreen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">De windt bedaert, de storm <rhyme label="a" type="m" corresp="#s8:l1">verdween</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Daer elck hem quam <rhyme label="b" type="f">aenbidden</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">Ghy in Persoon, zijt Godes <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En waerlijck, hier in 't <rhyme label="b" type="f" corresp="#s8:l3">midden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wie dus in Gods bewaringh <rhyme label="a" type="m">blijft</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">‘ En door 't geloof hem <rhyme label="a" type="m" corresp="#s9:l1">in-gelijft</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">‘ Dien sal hy niet <rhyme label="b" type="f">begeven</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">‘ Al schoon dat hy, een holle <rhyme label="c" type="m">ty</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">‘ Ter Werreldt most <rhyme label="b" type="f" corresp="#s9:l3">beleven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
