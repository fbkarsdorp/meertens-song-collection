    <melody>Die mint die lijdt veel pijn</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Couragie edel <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Couratie u <rhyme label="b" type="m">verblijdt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">In alle dees swaer <rhyme label="c" type="m">ellendt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Gheeft Iesus uwen <rhyme label="a" type="m" corresp="#s1:l1">wil</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die allen uwen <rhyme label="d" type="m">druck</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Haest kan maecken tot een <rhyme label="c" type="m" corresp="#s1:l3">endt</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Maer hy t'is <rhyme label="e" type="m">claer</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Weet wat u dient <rhyme label="e" type="m" corresp="#s1:l7">voorwaer</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Al tot u <rhyme label="f" type="m">salicheydt</rhyme></l>
        <l id="s1:l10" met="4" type="-+">Hierom in als patientich <rhyme label="f" type="m" corresp="#s1:l9">sijt</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy kendt wel uwen <rhyme label="a" type="m">noodt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En allen uwen <rhyme label="b" type="m">druck</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Tot het minste hy <rhyme label="c" type="m">aensiet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Hy weet u begheerte <rhyme label="a" type="m" corresp="#s2:l1">groot</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hoe dat u ziele <rhyme label="d" type="m">snaeckt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Om te wesen wt <rhyme label="c" type="m" corresp="#s2:l3">verdriet</rhyme>.</l>
        <l id="s2:l7" met="2" type="-+">Maer peyst voor <rhyme label="e" type="m">al</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Dat hy haest comen <rhyme label="e" type="m" corresp="#s2:l7">sal</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">V helpen inden <rhyme label="f" type="m">strijdt</rhyme></l>
        <l id="s2:l10" met="4" type="-+">Couragie ziel u dan <rhyme label="f" type="m" corresp="#s2:l9">verblijdt</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">In all' u droefheydt <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Soo peyst Ã´ edel <rhyme label="b" type="m">ziel</rhyme>!</l>
        <l id="s3:l3" met="3" type="-+">Hoe Iesus wt liefden <rhyme label="c" type="m">sterft</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die schandelijcke <rhyme label="a" type="m" corresp="#s3:l1">doodt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Waer me dat hy voor u <rhyme label="d" type="m">heeft</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Des Hemels loon <rhyme label="c" type="m" corresp="#s3:l3">be-erft</rhyme>.</l>
        <l id="s3:l7" met="2" type="-+">Wel aen dan maeckt <rhyme label="e" type="m">moet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">O Ziel het is u <rhyme label="e" type="m" corresp="#s3:l7">goet</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Al valt het nu wat <rhyme label="f" type="m">swaer</rhyme></l>
        <l id="s3:l10" met="4" type="-+">Peyst dat 't sal beter sijn hier <rhyme label="f" type="m" corresp="#s3:l9">naer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wie heeft Godt oyt <rhyme label="a" type="m">bemindt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die hy niet en <rhyme label="b" type="m">heeft</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Laeten lijden groot <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Iae oock sijn eenich <rhyme label="a" type="m" corresp="#s4:l1">kindt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat heeft soo veel <rhyme label="d" type="m">gheleden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Christen Ziel dit wel <rhyme label="c" type="m" corresp="#s4:l3">aensiet</rhyme>.</l>
        <l id="s4:l7" met="2" type="-+">Maria Maghet <rhyme label="e" type="m">reyn</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Moest lijden oock <rhyme label="e" type="m" corresp="#s4:l7">certeyn</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">En all' zijn vrienden <rhyme label="f" type="m">schoon</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Die nu ghenieten s' hemels <rhyme label="f" type="m" corresp="#s4:l9">loon</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wel aen niet meer en <rhyme label="a" type="m">claecht</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Maer gheeft nu aen den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hert, Ziel, leven, en <rhyme label="c" type="m">lichaem</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Alst lijden hem <rhyme label="a" type="m" corresp="#s5:l1">behaecht</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">V selven <rhyme label="d" type="m">presenteert</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Want het is hem <rhyme label="c" type="m" corresp="#s5:l3">aenghenaem</rhyme>:</l>
        <l id="s5:l7" met="2" type="-+">Tot lijden u dan <rhyme label="e" type="m">stelt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Den hemel lijdt <rhyme label="e" type="m" corresp="#s5:l7">ghewelt</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Soo 't Euangelie <rhyme label="f" type="m">seydt</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Hierom tot lijden u <rhyme label="f" type="m" corresp="#s5:l9">bereydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
