    <melody>Ik drink de nieuwe most</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VVAer ick mijn wen of <rhyme label="a" type="m">keer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">De liefde quelt my <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Daerom mijn lief neemt acht op mijne <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Want Venus soeckt by u en mijn te <rhyme label="b" type="m" corresp="#s1:l3">zijn</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Is u mijn Liefde <rhyme label="c" type="m">leet</rhyme>:</l>
        <l id="s1:l6" met="5" type="-+">Secht Herderin en valt my niet soo <rhyme label="c" type="m" corresp="#s1:l5">reet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Vergunt my plats dat ik als <rhyme label="d" type="f">Herder</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">U.E. Schaepkens <rhyme label="e" type="m">drijft</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Ende somtijts by u <rhyme label="e" type="m" corresp="#s1:l8">blijft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waerom neemt ghy de <rhyme label="a" type="m">vlucht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Is u mijn pijn <rhyme label="a" type="m" corresp="#s2:l1">genucht</rhyme></l>
        <l id="s2:l3" met="5" type="-+">Seght Herderin int bloeyen van u <rhyme label="b" type="m">Jeught</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Met rijpe sinnen, maeckt u slaef <rhyme label="b" type="m" corresp="#s2:l3">verheucht</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die door het lyded <rhyme label="c" type="m">sterft</rhyme></l>
        <l id="s2:l6" met="5" type="-+">En sonder u geen troost ter Werelt <rhyme label="c" type="m" corresp="#s2:l5">erft</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Maer ach vergaet als snee opt <rhyme label="d" type="f">velde</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Door u soet <rhyme label="e" type="m">aenschijn</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En soo vergaet mijn <rhyme label="e" type="m" corresp="#s2:l8">pijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Aldus dan <rhyme label="a" type="m">Herderin</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Moordresse vande <rhyme label="a" type="m" corresp="#s3:l1">Min</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Die oorsaeckt zijt, dat door mijn liefdens <rhyme label="b" type="m">gloet</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Gebraken wert u minnaers hert en <rhyme label="b" type="m" corresp="#s3:l3">bloet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ick sal van nu <rhyme label="c" type="m">voortaen</rhyme></l>
        <l id="s3:l6" met="5" type="-+">Mijn leven dempen in mijn silt <rhyme label="c" type="m" corresp="#s3:l5">getraen</rhyme></l>
        <l id="s3:l7" met="4" type="-+">En op mijn Graf sal ick doen <rhyme label="d" type="f">snyden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dat ick van Liefde <rhyme label="e" type="m">groot</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Gesturven ben de <rhyme label="e" type="m" corresp="#s3:l8">Doot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
