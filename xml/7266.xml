  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VVie wil hooren <rhyme label="a" type="f">singhen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van wonderlijcke <rhyme label="b" type="f">deunen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Een moeder had twee <rhyme label="a" type="f" corresp="#s1:l1">seunen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Nae de Roorde is zy <rhyme label="b" type="f" corresp="#s1:l2">ghetoghen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Zy klaegden met schreyende <rhyme label="b" type="f" corresp="#s1:l2">oogen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Over den eenen in’t <rhyme label="c" type="m">openbare</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Heer ist in u <rhyme label="b" type="f" corresp="#s1:l2">vermoghen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Vanght mijn soon de <rhyme label="c" type="m" corresp="#s1:l6">Kneevelaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Vanght hem sonder <rhyme label="a" type="f">verheughen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ghy Edele Heere <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Set hem op die <rhyme label="a" type="f" corresp="#s2:l1">Galerye</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Eyst gelt men sal’t u <rhyme label="b" type="f" corresp="#s2:l2">gheven</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Daer leydt niet aen <rhyme label="b" type="f" corresp="#s2:l2">bedreven</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Altijdt by tormenten <rhyme label="c" type="m">swaer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Laet hem roepen al zijn <rhyme label="b" type="f" corresp="#s2:l2">leven</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">’t Is soo vuylen <rhyme label="c" type="m" corresp="#s2:l6">Knevelaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Thien pondt groot ginck zy hem <rhyme label="a" type="f">langhen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hy sprack,’t is uw <rhyme label="b" type="f">bevolen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Om knevelaers te <rhyme label="a" type="f" corresp="#s3:l1">vanghen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En al die hebben <rhyme label="b" type="f" corresp="#s3:l2">ghestolen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Seght my, waer is hy <rhyme label="b" type="f" corresp="#s3:l2">verholen</rhyme>?</l>
        <l id="s3:l6" met="3" type="-+">Ick sal hem brenghen <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Seght my, waer is hy <rhyme label="b" type="f" corresp="#s3:l2">ghescholen</rhyme>?</l>
        <l id="s3:l8" met="3" type="-+">Ick sal vanghen de <rhyme label="c" type="m" corresp="#s3:l6">Knevelaer</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Zijn broeder was een <rhyme label="a" type="f">verrader</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hy deed’ als Iudas <rhyme label="b" type="f">dede</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Komt broeder gaen wy te <rhyme label="a" type="f" corresp="#s4:l1">gader</rhyme></l>
        <l id="s4:l4" met="3" type="-+">T’Antwerpen binnen der <rhyme label="b" type="f" corresp="#s4:l2">stede</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Ey broeder gaet doch <rhyme label="b" type="f" corresp="#s4:l2">mede</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In de Raets baen te goet <rhyme label="c" type="m">betrouw</rhyme></l>
        <l id="s4:l7" met="3" type="-+">En drincken een sloop met <rhyme label="b" type="f" corresp="#s4:l2">vrede</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Waer hy Ariaen maet leveren <rhyme label="c" type="m" corresp="#s4:l6">sou</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Doe zy inde Raets-baen <rhyme label="a" type="f">quamen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ariaen Maet nieuwers om <rhyme label="b" type="f">dochte</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Hoe haest dat zy hem <rhyme label="a" type="f" corresp="#s5:l1">namen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Hoe haest dat zy hem <rhyme label="b" type="f" corresp="#s5:l2">knochten</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Zy riepen daer zy hem <rhyme label="b" type="f" corresp="#s5:l2">brochten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Heb je moort of doodt <rhyme label="c" type="m">gheslaen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dat je moeder u <rhyme label="b" type="f" corresp="#s5:l2">verkochten</rhyme>?</l>
        <l id="s5:l8" met="3" type="-+">Of heeft u broeder u <rhyme label="c" type="m" corresp="#s5:l6">verraen</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doen heeft hy luyde <rhyme label="a" type="f">geroepen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die nu drinck gelt wil <rhyme label="b" type="f">winnen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Op de Zuyvel-marckt wilt <rhyme label="a" type="f" corresp="#s6:l1">loopen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Daer suldy Alckmaers Koopluy <rhyme label="b" type="f" corresp="#s6:l2">binnen</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Zeght datmen Ariaen Maet <rhyme label="b" type="f" corresp="#s6:l2">binnen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Want zijn moeder heeft hem <rhyme label="c" type="m">verhoedt</rhyme></l>
        <l id="s6:l7" met="3" type="-+">De Koopluy quamen uyt <rhyme label="b" type="f" corresp="#s6:l2">minnen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Hebben Ariaen Maet <rhyme label="c" type="m" corresp="#s6:l6">besocht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ariaen Maet moest <rhyme label="a" type="f">swijghen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hy moeste zijn ooghe <rhyme label="b" type="f">klaghen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Zy konden hem oock niet <rhyme label="a" type="f" corresp="#s7:l1">krijgen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Met loopen noch met <rhyme label="b" type="f" corresp="#s7:l2">draven</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Over al ginghen zy <rhyme label="b" type="f" corresp="#s7:l2">vraghen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Hy had nerghens niet <rhyme label="c" type="m">misdaen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Noch moest hy neghentigh <rhyme label="b" type="f" corresp="#s7:l2">dagen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">In des Heerem sloten <rhyme label="c" type="m" corresp="#s7:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Door’t schrijven van d’Alckmaerse <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Kreeg hy de boeyen <rhyme label="b" type="f">open</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Men sal’t die hoer wel <rhyme label="a" type="f" corresp="#s8:l1">leeren</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Haer eyghen soort <rhyme label="b" type="f" corresp="#s8:l2">verkoopen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Zy ist oock al <rhyme label="b" type="f" corresp="#s8:l2">ontkroopen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Niemant wil haer t’Alckmaer <rhyme label="c" type="m">sien</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Het kost haer gelt met <rhyme label="b" type="f" corresp="#s8:l2">hoopen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">En noch soo moest zy <rhyme label="c" type="m" corresp="#s8:l6">vlien</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ten zijn voetspoor gheen <rhyme label="a" type="f">jocken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Gheen fabelen noch gheen <rhyme label="b" type="f">dromen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Men luyden al de <rhyme label="a" type="f" corresp="#s9:l1">klocken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Doe Ariaen Maet was <rhyme label="b" type="f" corresp="#s9:l2">gekomen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Men branden t’zijnder <rhyme label="b" type="f" corresp="#s9:l2">vromen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Picktonnen op de <rhyme label="c" type="m">straet</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Men rieper sonder <rhyme label="b" type="f" corresp="#s9:l2">schromen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Weest welkom Arien <rhyme label="c" type="m" corresp="#s9:l6">Maet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
