    <tags/>
    <melody>Jonkvrouw ik u vragen laat</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OCh! kon mijn Ziel met snelle <rhyme label="a" type="m">vlught</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gelijck een Arent <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op-vliegen door de blauwe <rhyme label="a" type="m" corresp="#s1:l1">lucht</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En smaecken 'thooghste <rhyme label="b" type="m" corresp="#s1:l2">goet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Soo soud de pijn, verdweenen <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wt mijn bedroeft <rhyme label="b" type="m" corresp="#s1:l2">gemoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nu word ick alhier staegh <rhyme label="a" type="m">geplaeght</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En weder-sijdts <rhyme label="b" type="m">benaut</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo dat mijn Ziel geheel <rhyme label="a" type="m" corresp="#s2:l1">vertsaeght</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van droefheydt schier <rhyme label="b" type="m" corresp="#s2:l2">verflaut</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Gelijck een landt, in Somers <rhyme label="c" type="m">brandt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dat niet en wordt <rhyme label="b" type="m" corresp="#s2:l2">bedaut</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick schreeuw nu, als een Hert, dat <rhyme label="a" type="m">moe</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In 't jagen <rhyme label="b" type="m">afgemat</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Vlucht hijgende na 't Water <rhyme label="a" type="m" corresp="#s3:l1">toe</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Om in het koele <rhyme label="b" type="m" corresp="#s3:l2">nat</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Sijn ingewandt, by na <rhyme label="c" type="m">verbrandt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Weer te verquicken <rhyme label="b" type="m" corresp="#s3:l2">wat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer lof zy Godt, een Bron vol <rhyme label="a" type="m">troost</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sie ick hier open <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Mijn Ziele scheen in 't vier <rhyme label="a" type="m" corresp="#s4:l1">geroost</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Maer sy sal niet <rhyme label="b" type="m" corresp="#s4:l2">vergaen</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Dit is de tijdt, van kruys, en <rhyme label="c" type="m">strijdt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">De kroone die komt <rhyme label="b" type="m" corresp="#s4:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het is gheen noot, al schreyt mijn <rhyme label="a" type="m">stem</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Door 't wereltsche <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Want boven in 't <rhyme label="a" type="m" corresp="#s5:l1">Jerusalem</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Sal hy singhen een <rhyme label="b" type="m" corresp="#s5:l2">Liedt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Van soeten klangh: daer d'Eng'len <rhyme label="c" type="m">sangh</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Sal paren neffens <rhyme label="b" type="m" corresp="#s5:l2">hem</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mijn oogen die benevelt <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En doncker door <rhyme label="b" type="m">geween</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die sullen sien Godts klaer <rhyme label="a" type="m" corresp="#s6:l1">aenschijn</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat niet door Schad'wen <rhyme label="b" type="m" corresp="#s6:l2">heen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Maer in der daedt, in soo een <rhyme label="c" type="m">maet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Als Godt hier noyt <rhyme label="b" type="m" corresp="#s6:l2">verscheen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Mijn ooren nu al <rhyme label="a" type="m">toegestopt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Door 't droevige <rhyme label="b" type="m">geschrey</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die sullen dan sijn <rhyme label="a" type="m" corresp="#s7:l1">op-gepropt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Door 't singen van die <rhyme label="b" type="m" corresp="#s7:l2">Rey</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Die staegh tot stof, kiest Godes <rhyme label="c" type="m">lof</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Op toonen <rhyme label="b" type="m" corresp="#s7:l2">veelderley</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och! 't is veel beter eenen <rhyme label="a" type="m">reys</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Te hooren dit <rhyme label="b" type="m">gesangh</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als in een wereltlijck <rhyme label="a" type="m" corresp="#s8:l1">Paleys</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Veel duysendt jaren <rhyme label="b" type="m" corresp="#s8:l2">langh</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Te houden Hof. Siet, dese <rhyme label="c" type="m">stof</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Doet dat ick vreught <rhyme label="b" type="m" corresp="#s8:l2">ontfangh</rhyme>.</l>
      </lg>
    </lg>
  </text>
