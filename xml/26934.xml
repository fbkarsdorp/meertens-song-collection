        <l id="s3:l5" met="4" type="-+">das ehr die lieb nitt f ren <rhyme label="c" type="m" corresp="#s3:l4">mag</rhyme> /</l>
        <l id="s3:l6" met="3" type="-+">Ein feins meglein will ick <rhyme label="d" type="f">pleibenn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nh  hatt mein liedtlein schier ein <rhyme label="a" type="m">endt</rhyme></l>
