    <melody>Schoon liefje jent zeer excellent</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EN vindmen geen geerfde <rhyme label="a" type="m">zond</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Na Zwinglius <rhyme label="b" type="f">gezin-den</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Waer toe dan Doop, Waer toe dan <rhyme label="a" type="m" corresp="#s1:l1">Vont</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Men wies te geender <rhyme label="a" type="m" corresp="#s1:l1">stond</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Iet schoons, en <rhyme label="a" type="m" corresp="#s1:l1">t’on-gewond</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Plag niemand te <rhyme label="b" type="f" corresp="#s1:l2">verbin-den</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ziet hoe den eersten Tempel <rhyme label="a" type="m">haest</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Nae’t doopsel, met haer <rhyme label="b" type="f">kind’ren</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Iae zelfs uit hen de Duyvel <rhyme label="a" type="m" corresp="#s2:l1">blaest</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Zoo dat den Ketter <rhyme label="a" type="m" corresp="#s2:l1">dwaest</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Iae meer als dold en <rhyme label="a" type="m" corresp="#s2:l1">raest</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Die zulks nu wil <rhyme label="b" type="f" corresp="#s2:l2">verhind’ren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Of ist dat hy hier over <rhyme label="a" type="m">klaegt</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Zoo zegg’ hy eens met <rhyme label="b" type="f">zinnen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wanneer de Catholijk hem <rhyme label="a" type="m" corresp="#s3:l1">vraegdt</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Hoe ’t vuil word <rhyme label="a" type="m" corresp="#s3:l1">afgevaegdt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En Satan <rhyme label="a" type="m" corresp="#s3:l1">uitgejaegdt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">En was hy noyt daer <rhyme label="b" type="f" corresp="#s3:l2">binnen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Men kon noyt gast uitjagen, <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Hy ergens kwam <rhyme label="b" type="f">logeren</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Volgt dan, nae d’oude Christen <rhyme label="a" type="m" corresp="#s4:l1">leer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat Satan Voogd en <rhyme label="a" type="m" corresp="#s4:l1">Heer</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Der zielen is, <rhyme label="a" type="m" corresp="#s4:l1">wanneer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">De Kerk hem doed <rhyme label="b" type="f" corresp="#s4:l2">bezweren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">‘k Zeg Voogd en Heer; niet zonder <rhyme label="a" type="m">schijn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van recht: want die <rhyme label="b" type="f">verstreden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Sijn door des vyands zwaerd of <rhyme label="a" type="m" corresp="#s5:l1">pijn</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Of list van zoet <rhyme label="a" type="m" corresp="#s5:l1">fenijn</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ook slaven moeten <rhyme label="a" type="m" corresp="#s5:l1">sijn</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Des zelfs, met goede <rhyme label="b" type="f" corresp="#s5:l2">rede</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer hier van werd de ziel <rhyme label="a" type="m">bevrijd</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Deurst bad der <rhyme label="b" type="f">weergeboorten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Van Christus hand <rhyme label="a" type="m" corresp="#s6:l1">gebenedijdt</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">’t Welk ons de zonden <rhyme label="a" type="m" corresp="#s6:l1">quijt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Op doende breed en <rhyme label="a" type="m" corresp="#s6:l1">wijd</rhyme></l>
        <l id="s6:l6" met="3" type="-+">De Hemelrijkse <rhyme label="b" type="f" corresp="#s6:l2">poorten</rhyme>.</l>
      </lg>
    </lg>
  </text>
