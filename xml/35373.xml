  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EEnen Boer heel sat <rhyme label="a" type="f">gesopen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Opeen boere <rhyme label="b" type="m">kerremis</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">was aen eenen kant <rhyme label="a" type="f" corresp="#s1:l1">gecropen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En vol vanden boeren <rhyme label="b" type="m" corresp="#s1:l2">dis</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Gaf hy cost en dranck <rhyme label="c" type="f">weeromme</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Uyt sijn mondt, en om en <rhyme label="c" type="f" corresp="#s1:l5">omme</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Sijn Backhuys bespogen <rhyme label="d" type="m">was</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">En viel soo in slaep in 't <rhyme label="d" type="m" corresp="#s1:l7">gars</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dit geroock, en quam te <rhyme label="a" type="f">mercken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Een Swijn datter liep op 't <rhyme label="b" type="m">hof</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Aen sijn broer het boere <rhyme label="a" type="f" corresp="#s2:l1">vercken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Leckt het swijn sijn backhuys <rhyme label="b" type="m" corresp="#s2:l2">of</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Desen boer twee-voetigh <rhyme label="c" type="f">vercken</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Quam oock eenighsins te <rhyme label="c" type="f" corresp="#s2:l5">mercken</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Dat sijn backhuys leckt het <rhyme label="d" type="m">swijn</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">En sey 't magh alsoo niet <rhyme label="d" type="m" corresp="#s2:l7">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Meester Jan seyd hy scheert <rhyme label="a" type="f">sochte</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Scheert my eenen kermis <rhyme label="b" type="m">baert</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'t was hetscheer-mes soo hem <rhyme label="a" type="f" corresp="#s3:l1">dochte</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">want hy was soo wel <rhyme label="b" type="m" corresp="#s3:l2">gesnaert</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dat het lecken van het <rhyme label="c" type="f">swijne</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Hem het scheer-mes docht te <rhyme label="c" type="f" corresp="#s3:l5">sijne</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Dus een soo twee-voetigh <rhyme label="d" type="m">swijn</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Moest van 't swijn geschoren <rhyme label="d" type="m" corresp="#s3:l7">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dien Boer ginck hem noch ter <rhyme label="a" type="f">degen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Stellen om te vryen <rhyme label="b" type="m">fray</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Heeft in 't lest een Bruyt <rhyme label="a" type="f" corresp="#s4:l1">gekregen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En wiert Bruygom met <rhyme label="b" type="m" corresp="#s4:l2">May-Kray</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Soo hy Bruygom was <rhyme label="c" type="f">geworden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Is hy naar de stadt <rhyme label="c" type="f" corresp="#s4:l5">getorden</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Om t' hebben een Bruygoms <rhyme label="d" type="m">baert</rhyme>;</l>
        <l id="s4:l8" met="4" type="+-">Hy docht 't is de pijne <rhyme label="d" type="m" corresp="#s4:l7">waert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Meester zeyd hy wat moet <rhyme label="a" type="f">costen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Om t' hebben een Bruygoms <rhyme label="b" type="m">baert</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">'t Is al 't self wat gelden <rhyme label="a" type="f" corresp="#s5:l1">moste</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ick ben hier van niet <rhyme label="b" type="m" corresp="#s5:l2">vervaert</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Den Barbier sagh aen den <rhyme label="c" type="f">kloeten</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En sey 't sal wat costen <rhyme label="c" type="f" corresp="#s5:l5">moeten</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Sit maer neer wy maeckent <rhyme label="d" type="m">wel</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">'K scheer u als een fray <rhyme label="d" type="m" corresp="#s5:l7">gesel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Den Barbier die ginck dus <rhyme label="a" type="f">scheeren</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Den Boer wel twee uren <rhyme label="b" type="m">lanck</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dickwils liet hy hem <rhyme label="a" type="f" corresp="#s6:l1">antheeren</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Den spiegel seer preus en <rhyme label="b" type="m" corresp="#s6:l2">franck</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Datter niet en sou <rhyme label="c" type="f">manquieren</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Ginck met poyer 't hayr oock <rhyme label="c" type="f" corresp="#s6:l5">cieren</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Den Boer docht dit sal al <rhyme label="d" type="m">veel</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Kosten, oock dit rieckend <rhyme label="d" type="m" corresp="#s6:l7">meel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Als den boer nu was <rhyme label="a" type="f">gheschoren</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Ley daer neer een goudt <rhyme label="b" type="m">ducaet</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Docht oock 't is niet al <rhyme label="a" type="f" corresp="#s7:l1">verloren</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En soo liep hy stracx op <rhyme label="b" type="m" corresp="#s7:l2">straet</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">den Barbier die niet en <rhyme label="c" type="f">wiste</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">den ducaet uyt 's boere <rhyme label="c" type="f" corresp="#s7:l5">kiste</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Riep den boer en sey mijn <rhyme label="d" type="m">vriendt</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Geeft my dat ick heb <rhyme label="d" type="m" corresp="#s7:l7">verdient</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">den Boer op sijn duym ginck <rhyme label="a" type="f">bijten</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Ende sey niet datte <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Een ducaet die ben ick <rhyme label="a" type="f" corresp="#s8:l1">quijtte</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">'k Ley hem inden winckel <rhyme label="b" type="m" corresp="#s8:l2">neer</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">den barbier die ginck hem <rhyme label="c" type="f">vinden</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Ende sey by <rhyme label="c" type="f" corresp="#s8:l5">suyckerlinden</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Boeren scheyren is mijn <rhyme label="d" type="m">winst</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Boer goen dagh 't is t' uwen <rhyme label="d" type="m" corresp="#s8:l7">dienst</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
