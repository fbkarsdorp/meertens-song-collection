    <melody>O zalig heilig Bethlehem</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SAnnacherib quam wreet en <rhyme label="a" type="m">fel</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En voerdt een rasende Legher <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En daghte alsoo <rhyme label="a" type="m" corresp="#s1:l1">Israel</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Met trotse voeten te <rhyme label="b" type="f" corresp="#s1:l2">vertreden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer Hiskia, doe Isr'els <rhyme label="a" type="m">Vorst</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die gingh met heyl'ghe wijsheydt <rhyme label="b" type="f">swanger</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En maeckt hem, die na bloede <rhyme label="a" type="m" corresp="#s2:l1">dorst</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Door water-dorst noch 't leven <rhyme label="b" type="f" corresp="#s2:l2">banger</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want yder Put die stopt hy <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Doe nu op die verdrooghde <rhyme label="b" type="f">gronden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Den Roof-gier quam, wel flauw en <rhyme label="a" type="m" corresp="#s3:l1">moe</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Heeft hy daer maer ellend <rhyme label="b" type="f" corresp="#s3:l2">ghevonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Helschen-Jager loert oock <rhyme label="a" type="m">staegh</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Om Godts beminde <rhyme label="b" type="f">t'overromp'len</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En soeckt haer Zielen mee om <rhyme label="a" type="m" corresp="#s4:l1">laegh</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">In sijnen Zulpher-poel te <rhyme label="b" type="f" corresp="#s4:l2">domp'len</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De Springh-Fonteyn van dart'le <rhyme label="a" type="m">lust</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">De Nijt, en Toorn, ghewoon te <rhyme label="b" type="f">woeden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Sijn stroomen, daer in Sathan <rhyme label="a" type="m" corresp="#s5:l1">blust</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Sijn moort-lust, om sijn macht te <rhyme label="b" type="f" corresp="#s5:l2">voeden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wilt ghy dien vyandt nu <rhyme label="a" type="m">verslaen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Soo moet ghy die Fonteynen <rhyme label="b" type="f">vullen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die anders, soo sy open <rhyme label="a" type="m" corresp="#s6:l1">staen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Des Sathans macht verstijven <rhyme label="b" type="f" corresp="#s6:l2">sullen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
