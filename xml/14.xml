  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LIeve schoonheyt, Zon vol <rhyme label="a" type="f">deugden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Zoete voedster van de <rhyme label="a" type="f" corresp="#s1:l1">vreugden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die de minnaers Zielen <rhyme label="b" type="m">voen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Wist ghy wat ik wel zou <rhyme label="b" type="m" corresp="#s1:l3">doen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Om weer in uw gunst te <rhyme label="c" type="f">raken</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">'k Wed dat ghy, voor alle <rhyme label="c" type="f" corresp="#s1:l5">zaken</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">My zoud helpen, dat dees <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Door uw zoetheyt wiert <rhyme label="d" type="m" corresp="#s1:l7">geblust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wist ghy hoe ik door u <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dese starren, ben <rhyme label="a" type="f" corresp="#s2:l1">getogen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">In de Hemel van de <rhyme label="b" type="m">vreught</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Daer de Ziel zich door <rhyme label="b" type="m" corresp="#s2:l3">verheugt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">'k Wed' dat ghy my, zonder <rhyme label="c" type="f">marren</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Van de smerten, die my <rhyme label="c" type="f" corresp="#s2:l5">zarren</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Zoud verlossen, door de <rhyme label="d" type="m">reen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Dien ik vaak heb <rhyme label="d" type="m" corresp="#s2:l7">aengebeen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Toen ik, onder 't lieflijck <rhyme label="a" type="f">blozen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Van uw Lelien en <rhyme label="a" type="f" corresp="#s3:l1">Roozen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Daer de zoetheyt zoet in <rhyme label="b" type="m">speelt</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">U, vol lusten, heb <rhyme label="b" type="m" corresp="#s3:l3">gestreelt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Lusten, die mijn Ziel <rhyme label="c" type="f">doorboorden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En mijn zinnen zo <rhyme label="c" type="f" corresp="#s3:l5">bekoorden</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Datse d'waelden buyten 't <rhyme label="d" type="m">Pad</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Daer de Geest zijn zetel <rhyme label="d" type="m" corresp="#s3:l7">had</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wil het toch eens <rhyme label="a" type="f">overleggen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En aen my, belief 't u <rhyme label="a" type="f" corresp="#s4:l1">zeggen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Waer mijn misdaad in <rhyme label="b" type="m">bestaet</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Of zy eyscht zoo bittren <rhyme label="b" type="m" corresp="#s4:l3">haet</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Dat ick, uyt uw' oog, moet <rhyme label="c" type="f">dwalen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dat my trooste, met haer <rhyme label="c" type="f" corresp="#s4:l5">stralen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Stralen, daer ik eertijts <rhyme label="d" type="m">door</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Al mijn vryigheyt <rhyme label="d" type="m" corresp="#s4:l7">verloor</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
