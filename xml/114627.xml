  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LOoft Corsinum, die <rhyme label="a" type="f">ghegheven</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Godt, en sijn reyn Moeder <rhyme label="b" type="m">is</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Van sijn ouders (goedt van <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>)</l>
        <l id="s1:l4" met="4" type="+-">Oock voor sijn' <rhyme label="b" type="m" corresp="#s1:l2">ontfanckenis</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">In die loffelijcke <rhyme label="c" type="m">daedt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Spieghels van den echten <rhyme label="c" type="m" corresp="#s1:l5">staet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Doch sijn moeder sagh voor 't <rhyme label="a" type="f">baren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">In den slaep 'nen wolf uyt <rhyme label="b" type="m">haer</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Spruyten, die sy sagh <rhyme label="a" type="f" corresp="#s2:l1">vervaren</rhyme></l>
        <l id="s2:l4" met="4" type="+-">In een lam voor den <rhyme label="b" type="m" corresp="#s2:l2">autaer</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Dat sy naerderhandt <rhyme label="c" type="m">onthiel</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Tot dat dit in 't kindt <rhyme label="c" type="m" corresp="#s2:l5">gheviel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dat ghecomen tot sijn <rhyme label="a" type="f">jaren</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Heeft stracks sijnen boosen <rhyme label="b" type="m">aerdt</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Met veel quaets begost te <rhyme label="a" type="f" corresp="#s3:l1">varen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Waer de moeder van <rhyme label="b" type="m" corresp="#s3:l2">vervaert</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Claghende van groot <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Broght den droom uyt, haer <rhyme label="c" type="m" corresp="#s3:l5">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Waer Andreas van <rhyme label="a" type="f">verslaghen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En gheraeckt in sijn <rhyme label="b" type="m">ghemoedt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Om sich anders te gaen <rhyme label="a" type="f" corresp="#s4:l1">draghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Tot de Maeght ghingh' op den <rhyme label="b" type="m" corresp="#s4:l2">voet</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Storte sijn ghebedt tot <rhyme label="c" type="m">haer</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Knielende voor den <rhyme label="c" type="m" corresp="#s4:l5">autaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Siet de Maghets groot <rhyme label="a" type="f">vermoghen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Sijn misdaet wert hem seer <rhyme label="b" type="m">leet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En heeft stracks het heylich <rhyme label="a" type="f" corresp="#s5:l1">kleet</rhyme></l>
        <l id="s5:l4" met="4" type="+-">In Carmelo <rhyme label="b" type="m" corresp="#s5:l2">aenghetoghen</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Waer hy heylich heeft <rhyme label="c" type="m">gheleeft</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Uytghemunt in deughden <rhyme label="c" type="m" corresp="#s5:l5">heeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dus de Moeder oock des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Met veel gheesten comen <rhyme label="b" type="m">is</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Hem met haers ghesicht <rhyme label="a" type="f" corresp="#s6:l1">vereeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Doen hy songh sijn eerste <rhyme label="b" type="m" corresp="#s6:l2">Mis</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Noemende met soete <rhyme label="c" type="m">stem</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Haren vveertsten dienaer <rhyme label="c" type="m" corresp="#s6:l5">hem</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Tot een Bisdom hy <rhyme label="a" type="f">vercoren</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Heeft den myter niet <rhyme label="b" type="m">verbeyt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">In een clooster hem <rhyme label="a" type="f" corresp="#s7:l1">verloren</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Heeft hy door sijn <rhyme label="b" type="m" corresp="#s7:l2">nedricheyt</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Doch een kindt heeft hem <rhyme label="c" type="m">ontdeckt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Van den Heer daer toe <rhyme label="c" type="m" corresp="#s7:l5">verweckt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Tot den Bischops stoel <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Heeft hy met een meerder <rhyme label="b" type="m">deught</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Meer verciert sijn heylich <rhyme label="a" type="f" corresp="#s8:l1">leven</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Hemel ende aerd' <rhyme label="b" type="m" corresp="#s8:l2">verheught</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">'t Twistich volck tot vre <rhyme label="c" type="m">bekeert</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Met mirakelen <rhyme label="c" type="m" corresp="#s8:l5">verheert</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">O Andrea, die daer <rhyme label="a" type="f">boven</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Nu gheniet den hoochsten <rhyme label="b" type="m">vre</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Jont hem ons oock, om te <rhyme label="a" type="f" corresp="#s9:l1">loven</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Godt met u, jont door u <rhyme label="b" type="m" corresp="#s9:l2">be</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Al te crachtich by den <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Die u doet soo groote <rhyme label="c" type="m" corresp="#s9:l5">eer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
