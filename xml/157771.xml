  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Grietje Buer, mijn hart schier <rhyme label="a" type="m">splijt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wat raet soo gaet mijn <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Om 't af sterven van Jan <rhyme label="a" type="m" corresp="#s1:l1">Credijt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dien over goeden <rhyme label="b" type="m" corresp="#s1:l2">Man</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Hy was mijn hoop, mijn troost, mijn <rhyme label="c" type="m">vreught</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Mijn heyl, mijn tweede <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Want in het bloeyen van mijn <rhyme label="c" type="m" corresp="#s1:l5">Jeucht</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Heeft mijn Credijt <rhyme label="d" type="f" corresp="#s1:l6">begeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wel seper Trijntje wat ghy <rhyme label="a" type="m">seght</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hoe is die goe Man <rhyme label="b" type="m">doot</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hy hielp soo menigh mens te <rhyme label="a" type="m" corresp="#s2:l1">recht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ja duysent uyt den <rhyme label="b" type="m" corresp="#s2:l2">noot</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Koopluy, Winckeliers, <rhyme label="c" type="m">Makelaers</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sijn nu geheel <rhyme label="d" type="f">bedorven</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Op-geevers, Snuyvers, <rhyme label="c" type="m" corresp="#s2:l5">Kakelaers</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Nu Credijt is <rhyme label="d" type="f" corresp="#s2:l6">gestorven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy was de grootste Heer van 't <rhyme label="a" type="m">Lant</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Vermaert de werelt <rhyme label="b" type="m">wijt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die maer kon leven met <rhyme label="a" type="m" corresp="#s3:l1">verstant</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die haelde op <rhyme label="b" type="m" corresp="#s3:l2">Credijt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Jck kreeg al wat mijn hartje <rhyme label="c" type="m">dient</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Jck leefde sonder <rhyme label="d" type="f">sorgen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Credijt dat was mijn beste <rhyme label="c" type="m" corresp="#s3:l5">vrient</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Maer nu is 't komt maer <rhyme label="d" type="f" corresp="#s3:l6">morgen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Jck kocht onlanghs een treftigh <rhyme label="a" type="m">beest</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Credijt quam op dat <rhyme label="b" type="m">pas</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De Boer die scheen in 't eerst <rhyme label="a" type="m" corresp="#s4:l1">bevreest</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Credijt mijn borgh <rhyme label="b" type="m" corresp="#s4:l2">was</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Maer nu Credijt leydt in het <rhyme label="c" type="m">Graf</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Kan ick het niet <rhyme label="d" type="f">betalen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Credijt noch ick de Boer en <rhyme label="c" type="m" corresp="#s4:l5">gaf</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Waer sou ick het doch <rhyme label="d" type="f" corresp="#s4:l6">halen</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Credijt had mijn in Steyl <rhyme label="a" type="m">geset</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Mijn Huys wel <rhyme label="b" type="m">gestoffeert</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Van Wol en Linnen, Kas en <rhyme label="a" type="m" corresp="#s5:l1">Bedt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Al wat mijn hart <rhyme label="b" type="m" corresp="#s5:l2">begeert</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Jck had mijn Wijntje op mijn <rhyme label="c" type="m">Dis</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Gesoden en <rhyme label="d" type="f">Gebraden</rhyme>;</l>
        <l id="s5:l7" met="4" type="-+">Maer nu Credijt gestorven <rhyme label="c" type="m" corresp="#s5:l5">is</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Nu sit ick swaer <rhyme label="d" type="f" corresp="#s5:l6">beladen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Soo vaer ick mee, O Grietje <rhyme label="a" type="m">Buer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Een ieder houdt hem <rhyme label="b" type="m">doof</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Credijt gaf mijn goet <rhyme label="a" type="m" corresp="#s6:l1">avontuer</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Nu isser geen <rhyme label="b" type="m" corresp="#s6:l2">geloof</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Jck moet mijn Pater-noster <rhyme label="c" type="m">weer</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Nu op een nieuw gaen <rhyme label="d" type="f">leeren</rhyme>:</l>
        <l id="s6:l7" met="4" type="-+">Wat was die goe Credijt een <rhyme label="c" type="m" corresp="#s6:l5">Heer</rhyme>!</l>
        <l id="s6:l8" met="3" type="-+">Credijt hielt mijn in <rhyme label="d" type="f" corresp="#s6:l6">eeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wat salder menigh duysent <rhyme label="a" type="m">Mensch</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Nu treuren om dat <rhyme label="b" type="m">Lijck</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die hier schier leefden nae haer <rhyme label="a" type="m" corresp="#s7:l1">wensch</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En scheenen machtigh <rhyme label="b" type="m" corresp="#s7:l2">rijck</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Credijt brocht haer in veel <rhyme label="c" type="m">voorspoet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Hy kon het alles <rhyme label="d" type="f">heelen</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Jck loof datter veel <rhyme label="c" type="m" corresp="#s7:l5">Banckeroet</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Om Jan Credijt nu <rhyme label="d" type="f" corresp="#s7:l6">speelen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Jan Ooom die geeft wel 's Jan <rhyme label="a" type="m">contant</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En toont hem wel <rhyme label="b" type="m">beleeft</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Maer hy eyscht goe borgh of <rhyme label="a" type="m" corresp="#s8:l1">pant</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Als Credijt niet en <rhyme label="b" type="m" corresp="#s8:l2">heeft</rhyme>!</l>
        <l id="s8:l5" met="4" type="-+">Waer sal die goede man nu <rhyme label="c" type="m">heen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Daer staet wel op te <rhyme label="d" type="f">gissen</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Nu Jan Credijt is <rhyme label="c" type="m" corresp="#s8:l5">over-leen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Sal hy Credijt wel <rhyme label="d" type="f" corresp="#s8:l6">missen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Jck lestmael by een Backer <rhyme label="a" type="m">quam</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Klaegde mijn zijn <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Want als hy quam tot <rhyme label="a" type="m" corresp="#s9:l1">Amsterdam</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Credijt en vant hy <rhyme label="b" type="m" corresp="#s9:l2">niet</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Hy stont bedroeft en wist geen <rhyme label="c" type="m">raedt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Most na huys sonder <rhyme label="d" type="f">Kooren</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Credijt was wegh 't geloof zijn <rhyme label="c" type="m" corresp="#s9:l5">maet</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Had hy met een <rhyme label="d" type="f" corresp="#s9:l6">verloren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Weetje wie Credijt misschien <rhyme label="a" type="m">oock</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Sijn naeste vrienden <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Lief-hebbers van Ferynis <rhyme label="a" type="m" corresp="#s10:l1">Smoock</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">En die in bier of <rhyme label="b" type="m" corresp="#s10:l2">wijn</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Sy komen altijt gelt te <rhyme label="c" type="m">kort</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Die daeg'lijcks <rhyme label="d" type="f">domineeren</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">En die haer neus by <rhyme label="c" type="m" corresp="#s10:l5">Tick-tack-bort</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Een heelen dagh <rhyme label="d" type="f" corresp="#s10:l6">verkeeren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Daer zijn veel Koopluy in het <rhyme label="a" type="m">lant</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Die Credijt missen <rhyme label="b" type="m">mee</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">Van Londen en Archangels <rhyme label="a" type="m" corresp="#s11:l1">brant</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">En 't rooven op de <rhyme label="b" type="m" corresp="#s11:l2">Zee</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Door Facteurs, die den grooten <rhyme label="c" type="m">baes</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Met 's Meesters goet <rhyme label="d" type="f">labeuren</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Die moeten om die schelmen <rhyme label="c" type="m" corresp="#s11:l5">laes</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">En Jan Credijt nu <rhyme label="d" type="f" corresp="#s11:l6">treuren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Jck troost mijn hier mee lieve <rhyme label="a" type="m">Trijn</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Wy zijn het niet <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En nu wy 't niet alleenigh <rhyme label="a" type="m" corresp="#s12:l1">zijn</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">'t Raeckt yder in 't <rhyme label="b" type="m" corresp="#s12:l2">ghemeen</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Men moet hem schicken na den <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">'t Sal wel ten besten <rhyme label="d" type="f">raecken</rhyme>:</l>
        <l id="s12:l7" met="4" type="-+">Maer noch mijn lieven Vrient <rhyme label="c" type="m" corresp="#s12:l5">Credijt</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Ghy doet proeven doet <rhyme label="d" type="f" corresp="#s12:l6">Smaken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
