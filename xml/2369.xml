  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Cracht des vaders almachtich <rhyme label="a" type="m">groot</rhyme> /</l>
        <l id="s1:l2" met="3" type="-+">Zijt in myn memorie <rhyme label="b" type="f">gepresen</rhyme> /</l>
        <l id="s1:l3" met="4" type="-+">Dat ick ootmoedelyck tot in myn <rhyme label="a" type="m" corresp="#s1:l1">doot</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Godt mach ghedachtich <rhyme label="b" type="f" corresp="#s1:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die wijsheyt des soons dat eewich <rhyme label="a" type="m">woordt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Blijve in myn verstant van <rhyme label="b" type="f">binnen</rhyme> /</l>
        <l id="s2:l3" met="4" type="-+">Dat alle myn gepeysen nu <rhyme label="a" type="m" corresp="#s2:l1">rechtevoort</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Mijn sonden mogen <rhyme label="b" type="f" corresp="#s2:l2">verwinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De liefde van Godt den heyligen <rhyme label="a" type="m">geest</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wil mynen wille <rhyme label="b" type="f">doorvlieten</rhyme> /</l>
        <l id="s3:l3" met="4" type="-+">Met zyn seven gaeven <rhyme label="a" type="m" corresp="#s3:l1">aldermeest</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Moet ick myn werken <rhyme label="b" type="f" corresp="#s3:l2">ghenieten</rhyme>.</l>
      </lg>
    </lg>
  </text>
