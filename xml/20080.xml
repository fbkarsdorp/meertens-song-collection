  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LOop Vrijers loop ten <rhyme label="a" type="f">Yze</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Loop volgh al me die <rhyme label="a" type="f" corresp="#s1:l1">wijze</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Loop maak daar me goe <rhyme label="b" type="m">chier</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Loop met u <rhyme label="c" type="f">Narre-Peertjen</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Ik hou me by het <rhyme label="c" type="f" corresp="#s1:l4">heertjen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En warm my by het <rhyme label="b" type="m" corresp="#s1:l3">vuer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Amsterdamze <rhyme label="a" type="f">Maagden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Nooit beter ding <rhyme label="a" type="f" corresp="#s2:l1">behaagden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als ’t zwermen op het <rhyme label="b" type="m">Ys</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Haar Schaatsjens vinnig <rhyme label="c" type="f">snijden</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Haar voetjens ziet men <rhyme label="c" type="f" corresp="#s2:l4">glijden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Een yder trorst om <rhyme label="b" type="m" corresp="#s2:l3">prijs</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wel vrijers die zulk <rhyme label="a" type="f">speelen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Veel zoetheid schijnt te <rhyme label="a" type="f" corresp="#s3:l1">deelen</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Voeg u ter <rhyme label="b" type="m">Maagde-Baan</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Zy schijnen wel te <rhyme label="c" type="f">gragen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Doch durven ’t u niet <rhyme label="c" type="f" corresp="#s3:l4">vragen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met u ten Ys te <rhyme label="b" type="m" corresp="#s3:l3">gaan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wel gy Ys-Ziekke <rhyme label="a" type="f">lieden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die ’t viertjes schijnt te <rhyme label="a" type="f" corresp="#s4:l1">vlieden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ik gon u zulke <rhyme label="b" type="m">vreugt</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Maar ’t Rotterdammer <rhyme label="c" type="f">Teugjen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Daar neem ik van mijn <rhyme label="c" type="f" corresp="#s4:l4">meugjen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat doet my beter <rhyme label="b" type="m" corresp="#s4:l3">deugt</rhyme>.</l>
      </lg>
    </lg>
  </text>
