<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>52419</id>
    <date>
      <year-start>1821</year-start>
      <year-end>1821</year-end>
    </date>
    <tags>
      <tag standard-name="historielied" translation="historical song">historielied</tag>
    </tags>
    <melody>Van de handel</melody>
    <categories>
      <category translation="politics and history">politiek en geschiedenis</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Komt luistert wat 'k voor u <rhyme label="a" type="m">verzon</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">'t Is 't sterven van <rhyme label="a" type="m" corresp="#s1:l1">Napoleon</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Den held die door het <rhyme label="b" type="m">vier</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Vlammen en <rhyme label="b" type="m" corresp="#s1:l3">mortier</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">De wereld deed <rhyme label="c" type="f">beven</rhyme>;</l>
        <l id="s1:l6" met="4" type="-+">Die veel jongheid heeft ter dood <rhyme label="d" type="m">geleid</rhyme>.</l>
        <l id="s1:l7" met="4" type="-+">Is ook gestorven en naar <rhyme label="d" type="m" corresp="#s1:l6">d'eeuwigheid</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Op 't eiland <rhyme label="e" type="m">Sint-Heleen</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Moest hij van 't leven <rhyme label="e" type="m" corresp="#s1:l8">scheen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Bijna geheel <rhyme label="e" type="m" corresp="#s1:l8">alleen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoort hier, als hij de dood <rhyme label="a" type="m">bespeurt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hoe bitterlijk dat hij <rhyme label="a" type="m" corresp="#s2:l1">betreurt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zijn lief zoontje <rhyme label="b" type="m">teêr</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Nog beweent hij <rhyme label="b" type="m" corresp="#s2:l3">meer</rhyme></l>
        <l id="s2:l5" met="3" type="+-">Zijne <rhyme label="c" type="f">keizerinne</rhyme>:</l>
        <l id="s2:l6" met="4" type="-+">Marie-Louise, riep hij <rhyme label="d" type="m">menigmaal</rhyme>;</l>
        <l id="s2:l7" met="4" type="-+">Soldaten lief, en menig <rhyme label="d" type="m" corresp="#s2:l6">generaal</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Die met mij op het <rhyme label="e" type="m">land</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Veel lauwers hebt <rhyme label="e" type="m" corresp="#s2:l8">geplant</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">En ligt in 't dorre <rhyme label="e" type="m" corresp="#s2:l8">zand</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vaartwel, gij broeders, waar gij <rhyme label="a" type="m">woont</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die eertijds door mij werd <rhyme label="a" type="m" corresp="#s3:l1">gekroond</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Vaarwel, mijn schoon <rhyme label="b" type="m">rijk</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Waardig <rhyme label="b" type="m" corresp="#s3:l3">Frankerijk</rhyme></l>
        <l id="s3:l5" met="3" type="+-">'t Geen ik kwam <rhyme label="c" type="f">regeeren</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Adieu Weenen, mijn schoonvaders <rhyme label="d" type="m">woon</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Adieu Rus en gij Engeland <rhyme label="d" type="m" corresp="#s3:l6">schoon</rhyme>!</l>
        <l id="s3:l8" met="3" type="-+">Adieu in 't <rhyme label="e" type="m">generaal</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Spanje en <rhyme label="e" type="m" corresp="#s3:l8">Portugaal</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">En vrienden <rhyme label="e" type="m" corresp="#s3:l8">altemaal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ik wenschte dat door mijne <rhyme label="a" type="m">dood</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">In alle rijken, klein en <rhyme label="a" type="m" corresp="#s4:l1">groot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Tot den laatsten <rhyme label="b" type="m">dag</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Vrede duren <rhyme label="b" type="m" corresp="#s4:l3">mag</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">Ach! mocht dit toch <rhyme label="c" type="f">geschieden</rhyme>!</l>
        <l id="s4:l6" met="4" type="-+">En dat den band, die door u is <rhyme label="d" type="m">geleid</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Vereend mag blijven tot in <rhyme label="d" type="m" corresp="#s4:l6">eeuwigheid</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Opdat de rust <rhyme label="e" type="m">verschijnt</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">En daarmeê d'oorlog <rhyme label="e" type="m" corresp="#s4:l8">eind'</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Die 't land lang heeft <rhyme label="e" type="m" corresp="#s4:l8">gepijnd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hij spreekt ook van zijn <rhyme label="a" type="m">heiligheid</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dien hij in boeien heeft <rhyme label="a" type="m" corresp="#s5:l1">geleid</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">'t Was door den <rhyme label="b" type="m">hoogmoed</rhyme></l>
        <l id="s5:l4" met="3" type="+-">En baatzucht <rhyme label="b" type="m" corresp="#s5:l3">verwoed</rhyme></l>
        <l id="s5:l5" met="3" type="+-">Ik u in balling <rhyme label="c" type="f">stelde</rhyme>.</l>
        <l id="s5:l6" met="4" type="-+">'k Zie mijne misdaad op uw <rhyme label="d" type="m">persoon</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">'k Vervolgde den paus tot in zijn <rhyme label="d" type="m" corresp="#s5:l6">woon</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Oorzaak van mijn droef <rhyme label="e" type="m">lot</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Ik zegge hier tot <rhyme label="e" type="m" corresp="#s5:l8">slot</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">G'hoorzaamt aan paus en <rhyme label="e" type="m" corresp="#s5:l8">God</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Voor 't laatst, vaarwel dan <rhyme label="a" type="m">Belgenland</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Voor mij ik, ben hier <rhyme label="a" type="m" corresp="#s6:l1">overmand</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Adieu mijn rijk en <rhyme label="b" type="m">kroon</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Op mijn <rhyme label="b" type="m" corresp="#s6:l3">eilands-woon</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">Zal mijn grafplaats <rhyme label="c" type="f">wezen</rhyme>.</l>
        <l id="s6:l6" met="4" type="-+">Had ik niet te veel hoogmoed <rhyme label="d" type="m">gehad</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">'k Was nog keizer der Fransche <rhyme label="d" type="m" corresp="#s6:l6">stad</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Maar de g'allieerde <rhyme label="e" type="m">macht</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">[...] mij niet <rhyme label="e" type="m" corresp="#s6:l8">gebracht</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">[...] ik nooit had <rhyme label="e" type="m" corresp="#s6:l8">gedacht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
