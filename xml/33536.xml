<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33536</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O broeders ghedenct het groot <rhyme label="a" type="m">ellent</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van die zielen in het helsche <rhyme label="a" type="m" corresp="#s1:l1">torment</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Dat sy eewech daer moeten <rhyme label="b" type="f">lijden</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Och hoe lanc is eeuwich sonder <rhyme label="a" type="m" corresp="#s1:l1">ent</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Daer nimmermeer coemt <rhyme label="b" type="f" corresp="#s1:l3">verblijden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dese plaetse die is al onder der <rhyme label="a" type="m">eert</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Soo alsmen ons voor die waerheyt <rhyme label="a" type="m" corresp="#s2:l1">leert</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Eenen poel seer <rhyme label="b" type="f">vreesselycken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daer Lucefer, met den sijnen <rhyme label="a" type="m" corresp="#s2:l1">verkeert</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Wie en soude hem hier niet af <rhyme label="b" type="f" corresp="#s2:l3">verschricken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer regneert den eeuwighen <rhyme label="a" type="m">doot</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Door veel der handen tormenten <rhyme label="a" type="m" corresp="#s3:l1">groot</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Die den Duyuel daer gaet <rhyme label="b" type="f">bedrieuen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Door zyn wreetheyt, ende boosheyt <rhyme label="a" type="m" corresp="#s3:l1">snoot</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Die hier in sonden volherdich <rhyme label="b" type="f" corresp="#s3:l3">blieuen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy zyn aldaer in grooten <rhyme label="a" type="m">ghetal</rhyme></l>
        <l id="s4:l2" met="4" type="-+">En haer macht die ouerwint daer <rhyme label="a" type="m" corresp="#s4:l1">al</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Soo gaen sy daer <rhyme label="b" type="f">domineeren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ouer alle die daer comen <rhyme label="a" type="m" corresp="#s4:l1">sal</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En haer hier niet van sonden <rhyme label="b" type="f" corresp="#s4:l3">keeren</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sy thoonen ouer alsulcken haer <rhyme label="a" type="m">macht</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Die haer leuen hier hebben ouer <rhyme label="a" type="m" corresp="#s5:l1">gebracht</rhyme></l>
        <l id="s5:l3" met="4" type="-+">In sonden, ende quaet <rhyme label="b" type="f">leuen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">En hebben Godt, noch syn geboden niet <rhyme label="a" type="m" corresp="#s5:l1">geacht</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Of in haer ongeloof zijn <rhyme label="b" type="f" corresp="#s5:l3">ghebleuen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Seer dickwils vermaent ons die <rhyme label="a" type="m">schriftuier</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Van dit grouwelyck helsche <rhyme label="a" type="m" corresp="#s6:l1">vuier</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Dat zeer heet is bouen <rhyme label="b" type="f">maten</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Ende oock eewich is in <rhyme label="a" type="m" corresp="#s6:l1">geduier</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Waer wt niemant wort <rhyme label="b" type="f" corresp="#s6:l3">ghelaten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hier wort die verdoemde ziele <rhyme label="a" type="m">gheleyt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Nae dat zy wt haer lichaem <rhyme label="a" type="m" corresp="#s7:l1">scheyt</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Wort zy hier al in <rhyme label="b" type="f">ghesmeten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In desen put vol <rhyme label="a" type="m" corresp="#s7:l1">donckerheyt</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Daer den worm haer eewich sal <rhyme label="b" type="f" corresp="#s7:l3">eeten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die consientie die daer eewich <rhyme label="a" type="m">knaecht</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Om dat zy van God zoo is <rhyme label="a" type="m" corresp="#s8:l1">veriaecht</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Nae wiens beelt zy was <rhyme label="b" type="f">gheschapen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">En mits haer die boosheyt heeft <rhyme label="a" type="m" corresp="#s8:l1">behaecht</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Soo heeft die helle haer doen <rhyme label="b" type="f" corresp="#s8:l3">rapen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Int oordeel alsmen weder op sal <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">En die ziel in haer lichaem sal zyn <rhyme label="a" type="m" corresp="#s9:l1">ghegaen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Oock haer oordeel zal hebben <rhyme label="b" type="f">ontfanghen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Soo zal die helle open zyn <rhyme label="a" type="m" corresp="#s9:l1">ghedaen</rhyme></l>
        <l id="s9:l5" met="4" type="-+">En besluiten ziel ende lichaem <rhyme label="b" type="f" corresp="#s9:l3">stranghen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Daer sullen zy aldus te wercke <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Met die houerdije hebben <rhyme label="a" type="m" corresp="#s10:l1">ghedaen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Dese zalmen te samen doen <rhyme label="b" type="f">binden</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Den gierighen, ende onchuyschen daer <rhyme label="a" type="m" corresp="#s10:l1">aen</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Die salmen dan mede wel <rhyme label="b" type="f" corresp="#s10:l3">vinden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Den oproerighen, ende dootslaegers <rhyme label="a" type="m">coen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Salmen mede oock alzoo <rhyme label="a" type="m" corresp="#s11:l1">doen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Den Dronckaerts salmen oock zoo <rhyme label="b" type="f">packen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Met swauel, en Sulpher salmen haer <rhyme label="a" type="m" corresp="#s11:l1">voen</rhyme></l>
        <l id="s11:l5" met="4" type="-+">En doense al by malcander <rhyme label="b" type="f" corresp="#s11:l3">smaken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Daer salmen dan hooren seer groot <rhyme label="a" type="m">getier</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Die hem nu vult met wijn ende <rhyme label="a" type="m" corresp="#s12:l1">bier</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Wat anders sal hy daer <rhyme label="b" type="f">smaecken</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Den knagenden worm, en tâ€™helsche <rhyme label="a" type="m" corresp="#s12:l1">vier</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Daer hy moet branden, ende <rhyme label="b" type="f" corresp="#s12:l3">blaecken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Alle sondaers sullen daer nae <rhyme label="a" type="m">aduenant</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Ontfanghen pijne wt den helschen <rhyme label="a" type="m" corresp="#s13:l1">brant</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Nae de sonden van haer <rhyme label="b" type="f">bedreuen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Die sal al nae zyn rechtueerdich <rhyme label="a" type="m" corresp="#s13:l1">hant</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Een yder het zijne doen <rhyme label="b" type="f" corresp="#s13:l3">gheuen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Daer salmen sien het ooghen <rhyme label="a" type="m">gheschrey</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Van veele volcken <rhyme label="a" type="m" corresp="#s14:l1">menichderley</rhyme></l>
        <l id="s14:l3" met="4" type="-+">knerstanden sal men oock <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Och lacy, hoe bang ende wee is <rhyme label="a" type="m" corresp="#s14:l1">my</rhyme></l>
        <l id="s14:l5" met="4" type="-+">Sal daer vervullen haer <rhyme label="b" type="f" corresp="#s14:l3">ooren</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dit sullen altoos die liedekens <rhyme label="a" type="m">zyn</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Van dien ghesonghen int helsche <rhyme label="a" type="m" corresp="#s15:l1">pijn</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Dat zal daer eeuwich gaen <rhyme label="b" type="f">dueren</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Oock het deruen van Gods claer <rhyme label="a" type="m" corresp="#s15:l1">aenschijn</rhyme></l>
        <l id="s15:l5" met="4" type="-+">Sal haer pijne doen <rhyme label="b" type="f" corresp="#s15:l3">wtschueren</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Men sal daer ruycken sulcken <rhyme label="a" type="m">stanck</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Die daer sal duieren eeuwich <rhyme label="a" type="m" corresp="#s16:l1">lanck</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Die wy hier niet connen <rhyme label="b" type="f">verdraghen</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Met den clagenden droeuigen <rhyme label="a" type="m" corresp="#s16:l1">sanck</rhyme></l>
        <l id="s16:l5" met="4" type="-+">Die niemant sal connen <rhyme label="b" type="f" corresp="#s16:l3">veriaghen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Beminde laet ons dit zyn een <rhyme label="a" type="m">schrick</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Want Christus die heeft ons al <rhyme label="a" type="m" corresp="#s17:l1">gelyck</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Van dese pijne willen <rhyme label="b" type="f">bewaren</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Man en vrouw, arm, ende <rhyme label="a" type="m" corresp="#s17:l1">rijck</rhyme></l>
        <l id="s17:l5" met="4" type="-+">Wil hy onder zyn wiecken <rhyme label="b" type="f" corresp="#s17:l3">vergaren</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Wy lesen int Euangelie <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Van een rijcken mensch datter <rhyme label="a" type="m" corresp="#s18:l1">waer</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Die hier zeer lecker ginck <rhyme label="b" type="f">eeten</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Oock hem costelijck becleede <rhyme label="a" type="m" corresp="#s18:l1">daer</rhyme></l>
        <l id="s18:l5" met="4" type="-+">Maer worde in der hellen <rhyme label="b" type="f" corresp="#s18:l3">ghesmeten</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Als hy nu in dese tormenten <rhyme label="a" type="m">lach</rhyme></l>
        <l id="s19:l2" met="4" type="-+">En Abraham van verre <rhyme label="a" type="m" corresp="#s19:l1">sach</rhyme></l>
        <l id="s19:l3" met="4" type="-+">Soo begonste hy daer te <rhyme label="b" type="f">spreecken</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Ick bidde of Lazarus comen <rhyme label="a" type="m" corresp="#s19:l1">mach</rhyme></l>
        <l id="s19:l5" met="4" type="-+">En zyn vinger in het water doen <rhyme label="b" type="f" corresp="#s19:l3">steecken</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Op dat hy zoo doen coelen myn <rhyme label="a" type="m">tong</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Dit was het liedeken dat hy doen <rhyme label="a" type="m" corresp="#s20:l1">song</rhyme></l>
        <l id="s20:l3" met="4" type="-+">Maer ten mochte hem niet <rhyme label="b" type="f">ghebueren</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Dus raede ick v out, ende <rhyme label="a" type="m" corresp="#s20:l1">iong</rhyme>,</l>
        <l id="s20:l5" met="4" type="-+">Dat ghy nu wel hier siet te <rhyme label="b" type="f" corresp="#s20:l3">vueren</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Een dropel waters wort daer <rhyme label="a" type="m">ontseyt</rhyme></l>
        <l id="s21:l2" met="4" type="-+">Maer moeten lyden inder <rhyme label="a" type="m" corresp="#s21:l1">eewicheyt</rhyme></l>
        <l id="s21:l3" met="4" type="-+">Och laet ons nu hier op <rhyme label="b" type="f">waecken</rhyme></l>
        <l id="s21:l4" met="4" type="-+">Siet dat ghy nu een goet leuen <rhyme label="a" type="m" corresp="#s21:l1">leyt</rhyme></l>
        <l id="s21:l5" met="4" type="-+">So zult ghy daer niet <rhyme label="b" type="f" corresp="#s21:l3">gheraecken</rhyme></l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Wilt ghy dese ellendige plaetse <rhyme label="a" type="m">ontgaen</rhyme></l>
        <l id="s22:l2" met="4" type="-+">So moet ghy int Catholyck geloue <rhyme label="a" type="m" corresp="#s22:l1">staen</rhyme></l>
        <l id="s22:l3" met="4" type="-+">Datmen altyts heeft doen <rhyme label="b" type="f">leeren</rhyme>,</l>
        <l id="s22:l4" met="4" type="-+">De nieuwe seckten hangt toch niet <rhyme label="a" type="m" corresp="#s22:l1">aen</rhyme></l>
        <l id="s22:l5" met="4" type="-+">Maer doet v daer verde <rhyme label="b" type="f" corresp="#s22:l3">afkeeren</rhyme></l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Vreest Godt, en hout zyn gheboden <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s23:l2" met="4" type="-+">Leeft heylich tot v eynde na zyn <rhyme label="a" type="m" corresp="#s23:l1">beuel</rhyme></l>
        <l id="s23:l3" met="4" type="-+">Wilt zyn Dienaers ghehoorsaemheyt <rhyme label="b" type="f">geuen</rhyme></l>
        <l id="s23:l4" met="4" type="-+">Soo zult ghy ontcomen dese <rhyme label="a" type="m" corresp="#s23:l1">hel</rhyme></l>
        <l id="s23:l5" met="4" type="-+">En inden hemel <rhyme label="b" type="f" corresp="#s23:l3">naemaelsleuen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
