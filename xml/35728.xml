    <melody>O liefste lief geprezen</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEyligen Geest <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Als Vader ende <rhyme label="b" type="m">Zoon</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghy zijt soo wijs als <rhyme label="a" type="f" corresp="#s1:l1">desen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Niet leeger is u <rhyme label="b" type="m" corresp="#s1:l2">throon</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Ghy zijt Godt, en <rhyme label="c" type="f">Almachtigh</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Maeckt my hierom <rhyme label="c" type="f" corresp="#s1:l5">deelachtigh</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Uw' gaven ses en <rhyme label="d" type="m">een</rhyme>:</l>
        <l id="s1:l8" met="3" type="-+">Verstoot niet mijn <rhyme label="d" type="m" corresp="#s1:l7">gebe'en</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wilt my u Wijsheyt <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat ick met lijf en <rhyme label="b" type="m">ziel</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Alleen soeck Godes <rhyme label="a" type="f" corresp="#s2:l1">eeren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gelijck Sinte <rhyme label="b" type="m" corresp="#s2:l2">Michiel</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Geeft dat ick van de'es <rhyme label="c" type="f">tijde</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Als 's werelts schouw, en <rhyme label="c" type="f" corresp="#s2:l5">mijde</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">En dat mijn hart en <rhyme label="d" type="m">oogh</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Met d'Arent vlieght om <rhyme label="d" type="m" corresp="#s2:l7">hoogh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Geeft my uyt 's Hemels <rhyme label="a" type="f">hoven</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Verstandt verlicht, en <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Tot dienst van 't waer <rhyme label="a" type="f" corresp="#s3:l1">geloven</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">En dat my 't open <rhyme label="b" type="m" corresp="#s3:l2">doet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Al 't geen dat ick moet <rhyme label="c" type="f">weten</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Laet my dat noyt <rhyme label="c" type="f" corresp="#s3:l5">vergeten</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Geeft dat 't verstant my <rhyme label="d" type="m">leyt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Tot deught, en <rhyme label="d" type="m" corresp="#s3:l7">nedrighheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O! gever milt wilt <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Aen my u gaef van <rhyme label="b" type="m">Raet</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Laet my die al mijn <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Volbrengen metter <rhyme label="b" type="m" corresp="#s4:l2">daet</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Geeft dat ick 's werelts <rhyme label="c" type="f">paden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Nocht 't vlees, noch Satans <rhyme label="c" type="f" corresp="#s4:l5">raden</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Noyt wandel, noch <rhyme label="d" type="m">bemin</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Met 't hart, met voet, noch <rhyme label="d" type="m" corresp="#s4:l7">zin</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gunt my van dese <rhyme label="a" type="f">tijde</rhyme>:</l>
        <l id="s5:l2" met="3" type="-+">U gave van <rhyme label="b" type="m">Sterckheydt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Om voor 't geloof te <rhyme label="a" type="f" corresp="#s5:l1">strijde</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Te lijde met <rhyme label="b" type="m" corresp="#s5:l2">vroomheyt</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">En dat ick vroom <rhyme label="c" type="f">verwinnen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Mijn natuer, en quae <rhyme label="c" type="f" corresp="#s5:l5">zinnen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En sonden mach <rhyme label="d" type="m">versmaen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En traegheyt <rhyme label="d" type="m" corresp="#s5:l7">weder-staen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Geeft Wetenschap my <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Na mijnen roep en <rhyme label="b" type="m">staet</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Maeckt dat ick mach hier <rhyme label="a" type="f" corresp="#s6:l1">meden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Mijn even-mensch doen <rhyme label="b" type="m" corresp="#s6:l2">baet</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Geeft dat ick d'hoogheyt <rhyme label="c" type="f">schouwe</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En op mijn noyt <rhyme label="c" type="f" corresp="#s6:l5">betrouwe</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">En dat ick u Godt <rhyme label="d" type="m">ken</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Daer by, wie dat ick <rhyme label="d" type="m" corresp="#s6:l7">ben</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Fonteyn der gaven! <rhyme label="a" type="f">schencken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt my <rhyme label="b" type="m">Godtvruchtigheyt</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Dat niet mijn ziel mach <rhyme label="a" type="f" corresp="#s7:l1">krencken</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dat niet van Godt mijn <rhyme label="b" type="m" corresp="#s7:l2">leyt</rhyme>;</l>
        <l id="s7:l5" met="3" type="-+">Dat ick al doe de <rhyme label="c" type="f">menschen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Of laet, dat ick zou <rhyme label="c" type="f" corresp="#s7:l5">wenschen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dat Godt mijn hart <rhyme label="d" type="m">alleen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Heeft, ende ander <rhyme label="d" type="m" corresp="#s7:l7">geen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ten laetste wilt <rhyme label="a" type="f">vereeren</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Aen my, de vreeze <rhyme label="b" type="m">Goods</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Dat ick vrees d' Heer der <rhyme label="a" type="f" corresp="#s8:l1">Heeren</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Geen pijn, noch menschen <rhyme label="b" type="m" corresp="#s8:l2">boos</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Wilt altijdt in mijn <rhyme label="c" type="f">blijven</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Mijn troosten en <rhyme label="c" type="f" corresp="#s8:l5">verstijven</rhyme>.</l>
        <l id="s8:l7" met="3" type="-+">Mijn ziel maeckt rijck en <rhyme label="d" type="m">schoon</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">En geeft my 's hemels <rhyme label="d" type="m" corresp="#s8:l7">throon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
