  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Het bloeyet die werelt <rhyme label="a" type="m">ghenoegelic</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In mijnen dommen <rhyme label="b" type="f">sinnen</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Sy heeft mijn hert so seer <rhyme label="c" type="m">doerwont</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met haerder valscher <rhyme label="b" type="f" corresp="#s1:l2">minnen</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Sy heeft mijn hert so seer <rhyme label="c" type="m" corresp="#s1:l3">doerwont</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Met haerder valscher <rhyme label="b" type="f" corresp="#s1:l2">minnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het docht my wesen <rhyme label="a" type="m">ghenoechgelijc</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die creaturen te <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer sy sijn al <rhyme label="c" type="m">bedriechgelijc</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als ic my wel <rhyme label="b" type="f" corresp="#s2:l2">versinne</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Maer sy sijn al <rhyme label="c" type="m" corresp="#s2:l3">bedriechgelijc</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als ic my wel <rhyme label="b" type="f" corresp="#s2:l2">versinne</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die werelt,die moeter ghelaten <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ende creaturen <rhyme label="b" type="f">vergheten</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Dat ghaet my naerder dan die <rhyme label="c" type="m">doot</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Mijn jonghe natuer te <rhyme label="b" type="f" corresp="#s3:l2">breken</rhyme>!</l>
        <l id="s3:l5" met="4" type="-+">Dat ghaet my naerder dan die <rhyme label="c" type="m" corresp="#s3:l3">doot</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Mijn jonghe natuer te <rhyme label="b" type="f" corresp="#s3:l2">breken</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die duvel, die werelt, myn eyghen <rhyme label="a" type="m">vleysch</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">Sy quellen my alsoe <rhyme label="b" type="f">seere</rhyme>!</l>
        <l id="s4:l3" met="4" type="-+">Maer die den strijt noch winnen <rhyme label="c" type="m">sel</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat weet Ons Lieve <rhyme label="b" type="f" corresp="#s4:l2">Heere</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Maer die den strijt noch winnen <rhyme label="c" type="m" corresp="#s4:l3">sel</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat weet Ons Lieve <rhyme label="b" type="f" corresp="#s4:l2">Heere</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soe wye gheen lyden gheproeft een <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die en kans niet <rhyme label="b" type="f">uutghespreken</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Hoe wee, hoe wee maer dat my <rhyme label="c" type="m">doet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Mijn jonghe natuer te <rhyme label="b" type="f" corresp="#s5:l2">breken</rhyme>!</l>
        <l id="s5:l5" met="4" type="-+">Hoe wee, hoe wee maer dat my <rhyme label="c" type="m" corresp="#s5:l3">doet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Mijn jonghe natuer te <rhyme label="b" type="f" corresp="#s5:l2">breken</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Och, Lieve Heer Ihesus, nu staet ons <rhyme label="a" type="m">by</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Ende wilt my niet <rhyme label="b" type="f">begheven</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Ic sal noch desen strijt <rhyme label="c" type="m">anghaen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Al soudet my costen <rhyme label="b" type="f" corresp="#s6:l2">tleven</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Ic sal noch desen strijt <rhyme label="c" type="m" corresp="#s6:l3">anghaen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Al soudet my costen <rhyme label="b" type="f" corresp="#s6:l2">tleven</rhyme>.</l>
      </lg>
    </lg>
  </text>
