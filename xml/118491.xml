    <melody>Iets moet ik u Laura vragen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Siet, hoe aangenaam en goet is <rhyme label="a" type="f">'t</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Siet hoe lieflik en hoe soet is <rhyme label="a" type="f" corresp="#s1:l1">'t</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat ook broeders na den <rhyme label="b" type="m">geest</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Dus in eendragt t'samen <rhyme label="c" type="f">woonen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En malkander liefde <rhyme label="c" type="f" corresp="#s1:l4">toonen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Na dat elk vermag op 't <rhyme label="b" type="m" corresp="#s1:l3">meest</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Is (om 't by iet schoons te <rhyme label="a" type="f">keuren</rhyme>)</l>
        <l id="s2:l2" met="4" type="+-">Als de kostlijk' <rhyme label="a" type="f" corresp="#s2:l1">oli-geuren</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als de balsem-salf, <rhyme label="b" type="m">wel-eer</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Op Aarons hooft <rhyme label="c" type="f">gegoten</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Daar Godt selfs mee wou <rhyme label="c" type="f" corresp="#s2:l4">vergroten</rhyme></l>
        <l id="s2:l6" met="4" type="+-">'s Hoogepriesters ampt en <rhyme label="b" type="m" corresp="#s2:l3">eer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als een salf ten hoofd' <rhyme label="a" type="f">afvloeijend</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En Aarons baart <rhyme label="a" type="f" corresp="#s3:l1">besproeijend</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Nederdalend tot den <rhyme label="b" type="m">zoom</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Van sijn priesterlijke <rhyme label="c" type="f">kleeren</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Daar hy mee tot Godt moest <rhyme label="c" type="f" corresp="#s3:l4">keeren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Ingewijt ten <rhyme label="b" type="m" corresp="#s3:l3">Heiligdom'</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Is gelijk de dauw in <rhyme label="a" type="f">d'uchtend</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Hermons eed'le berg <rhyme label="a" type="f" corresp="#s4:l1">bevruchtend</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En gelijk het suiver <rhyme label="b" type="m">vocht</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Welk op Sions bergen <rhyme label="c" type="f">neÃªr-daalt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Daar de Morgen-Son op <rhyme label="c" type="f" corresp="#s4:l4">weer-straalt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Als se doorbreekt door de <rhyme label="b" type="m" corresp="#s4:l3">locht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Want daar broeders soo <rhyme label="a" type="f">eendrachtig</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Zijn vergaart, werkt Godt ook <rhyme label="a" type="f" corresp="#s5:l1">krachtig</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">'t Waar geluk is daar <rhyme label="b" type="m">bereidt</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Godt gebiedt, en wil daar <rhyme label="c" type="f">geven</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Zegen en een salig <rhyme label="c" type="f" corresp="#s5:l4">leven</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Nu en tot in <rhyme label="b" type="m" corresp="#s5:l3">eeuwigheit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
