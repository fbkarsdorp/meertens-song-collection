  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ACh wat zijn nu mijn <rhyme label="a" type="f">daghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Vol ramp en droefheyt <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Hoe sal ick <rhyme label="a" type="f" corresp="#s1:l1">draghen</rhyme></l>
        <l id="s1:l4" met="3" type="+-">‘t Leet dat my dus doet <rhyme label="a" type="f" corresp="#s1:l1">klaghen</rhyme>?</l>
        <l id="s1:l5" met="2" type="-+">O wrede <rhyme label="b" type="m" corresp="#s1:l2">doodt</rhyme>!</l>
        <l id="s1:l6" met="3" type="-+">Waerom heb ‘t ghy <rhyme label="c" type="f">ghescheyden</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">‘t Soet ghevry van ons <rhyme label="c" type="f" corresp="#s1:l6">beyden</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">Nu dat de zieltjes so vast verbonden <rhyme label="d" type="f">waren</rhyme>?</l>
        <l id="s1:l9" met="6" type="+-">Of benijde, of benijde, of <rhyme label="c" type="f" corresp="#s1:l6">benijde</rhyme></l>
        <l id="s1:l10" met="1" type="-+">Ghy ‘t <rhyme label="d" type="f" corresp="#s1:l8">paren</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ach wie draeght sulcke <rhyme label="a" type="f">minne</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Als my mijn Herder <rhyme label="b" type="m">droegh</rhyme>?</l>
        <l id="s2:l3" met="2" type="-+">Die soo kan <rhyme label="a" type="f" corresp="#s2:l1">winnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">‘t Hert van sijn <rhyme label="a" type="f" corresp="#s2:l1">Herderinne</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">‘t Is niet <rhyme label="b" type="m" corresp="#s2:l2">ghenoegh</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Al is hy <rhyme label="c" type="f">overleden</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Noch ghedenck ick op <rhyme label="c" type="f" corresp="#s2:l6">heden</rhyme>,</l>
        <l id="s2:l8" met="5" type="-+">Aen sijn goe gunste: Maer ‘t missen doet my <rhyme label="d" type="f">weenen</rhyme>,</l>
        <l id="s2:l9" met="6" type="+-">Al mijn vreughde, al mijn vreughde, al mijn <rhyme label="c" type="f" corresp="#s2:l6">vreughde</rhyme>,</l>
        <l id="s2:l10" met="1" type="-+">Vlieght <rhyme label="d" type="f" corresp="#s2:l8">henen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Och waer ‘t moogh’lijck te <rhyme label="a" type="f">wecken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Mijn Lief, mijn waerde <rhyme label="b" type="m">schat</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Ick souw daer <rhyme label="a" type="f" corresp="#s3:l1">trecken</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Al moest ick ‘t graf <rhyme label="a" type="f" corresp="#s3:l1">bedecken</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Met traentjes <rhyme label="b" type="m" corresp="#s3:l2">nat</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">‘t Mocht my geensins <rhyme label="c" type="f">verveelen</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">Want hy sou weder <rhyme label="c" type="f" corresp="#s3:l6">heelen</rhyme>,</l>
        <l id="s3:l8" met="5" type="-+">Mijn droeve smerte, en troosten als voor <rhyme label="d" type="f">desen</rhyme>,</l>
        <l id="s3:l9" met="6" type="+-">Hoe gheluckigh, hoe gheluckigh, hoe <rhyme label="c" type="f" corresp="#s3:l6">gheluckigh</rhyme></l>
        <l id="s3:l10" met="1" type="-+">Sou ‘k <rhyme label="d" type="f" corresp="#s3:l8">wesen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als ick sie dat <rhyme label="a" type="f">Lerinde</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En ander Nimphjes <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">In ‘t Bosje <rhyme label="a" type="f" corresp="#s4:l1">vinden</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Elck sijn Lief en <rhyme label="a" type="f" corresp="#s4:l1">beminde</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Dan word’ ick <rhyme label="b" type="m" corresp="#s4:l2">weer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Met nieuwe smert <rhyme label="c" type="f">doorsteken</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">En vertreck (om te <rhyme label="c" type="f" corresp="#s4:l6">spreken</rhyme>,</l>
        <l id="s4:l8" met="5" type="-+">Mijn droeve klachten), In eensaem naere <rhyme label="d" type="f">kuylen</rhyme>,</l>
        <l id="s4:l9" met="6" type="+-">Daer ick dickmael, daer ick dickmael, daer ick <rhyme label="c" type="f" corresp="#s4:l6">dickmael</rhyme>,</l>
        <l id="s4:l10" met="1" type="-+">Gae <rhyme label="d" type="f" corresp="#s4:l8">schuylen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als ick snachts leg’ te <rhyme label="a" type="f">rusten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Schijnt my de min te <rhyme label="b" type="m">vo’en</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Als of wy <rhyme label="a" type="f" corresp="#s5:l1">kusten</rhyme>:</l>
        <l id="s5:l4" met="3" type="+-">Maer ‘k waeck op vol <rhyme label="a" type="f" corresp="#s5:l1">onlusten</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">War sal ick <rhyme label="b" type="m" corresp="#s5:l2">doen</rhyme>?</l>
        <l id="s5:l6" met="3" type="-+">Mijn liefste Lief ter <rhyme label="c" type="f">eeren</rhyme>?</l>
        <l id="s5:l7" met="3" type="+-">By gheen Herders <rhyme label="c" type="f" corresp="#s5:l6">verkeeren</rhyme>:</l>
        <l id="s5:l8" met="5" type="-+">Want geen ter weerelt sal soo ghehuys-vest <rhyme label="d" type="f">wesen</rhyme>,</l>
        <l id="s5:l9" met="6" type="+-">In mijn herte, in mijn herte, in mijn <rhyme label="c" type="f" corresp="#s5:l6">herte</rhyme>,</l>
        <l id="s5:l10" met="1" type="-+">Als <rhyme label="d" type="f" corresp="#s5:l8">desen</rhyme>.</l>
      </lg>
    </lg>
  </text>
