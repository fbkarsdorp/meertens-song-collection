  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">tZA, tza, nu wêer eens om - <rhyme label="a" type="f">gedronken</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Licht op mijn <rhyme label="b" type="f">Quantje</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ey! laat geen volle Roemers <rhyme label="a" type="f" corresp="#s1:l1">pronken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Lichtdomdiere, fa, la, <rhyme label="c" type="m">la</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Lesch Bacchus <rhyme label="b" type="f" corresp="#s1:l2">brandtje</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het is hier nu geen tijd van <rhyme label="a" type="f">dromen</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Licht op mijn <rhyme label="b" type="f">Quantje</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hey, laat de Wijn door 't keeltje <rhyme label="a" type="f" corresp="#s2:l1">stromen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Lichtdomdiere, fa, la, <rhyme label="c" type="m">la</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Lesch Bacchus <rhyme label="b" type="f" corresp="#s2:l2">brandtje</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Na zoo veel zoute en vette <rhyme label="a" type="f">kosjes</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Licht op mijn <rhyme label="b" type="f">Quantje</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Past wel het zap van Fransche - <rhyme label="a" type="f" corresp="#s3:l1">trosjes</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Lichtdomdiere, fa, la, <rhyme label="c" type="m">la</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Lesch Bacchus <rhyme label="b" type="f" corresp="#s3:l2">brandtje</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Zoo, zoo, verheugde, roertje <rhyme label="a" type="f">keeltjes</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Licht op mijn <rhyme label="b" type="f">Quantje</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">By 't eêl geluit van Fluit en <rhyme label="a" type="f" corresp="#s4:l1">Veeltjes</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Lichtdomdiere, fa, la, <rhyme label="c" type="m">la</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Lesch Bacchus <rhyme label="b" type="f" corresp="#s4:l2">brandtje</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Weest vrolik, en wilt <rhyme label="a" type="f">ondertuszen</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Licht op mijn <rhyme label="b" type="f">Quantje</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">U voegen by het Juffer - <rhyme label="a" type="f" corresp="#s5:l1">kuszen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Lichtdomdiere, fa, la, <rhyme label="c" type="m">la</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Lesch Bacchus <rhyme label="b" type="f" corresp="#s5:l2">brandtje</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maar laat Celenus natte <rhyme label="a" type="f">stander</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Licht op mijn <rhyme label="b" type="f">Quantje</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Voort zwaijen van de een op d' <rhyme label="a" type="f" corresp="#s6:l1">ander</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Lichtdomdiere, fa, la, <rhyme label="c" type="m">la</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Lesch Bacchus <rhyme label="b" type="f" corresp="#s6:l2">brandtje</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Want dit gepooi, na iders <rhyme label="a" type="f">oordeel</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Licht op mijn <rhyme label="b" type="f">Quantje</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Verstrekt tot vreugd en Hollandts <rhyme label="a" type="f" corresp="#s7:l1">voordeel</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Lichtdomdiere, fa, la, <rhyme label="c" type="m">la</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Lesch Bacchus <rhyme label="b" type="f" corresp="#s7:l2">brandtje</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
