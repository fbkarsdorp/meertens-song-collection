    <melody>Hoelang zal ik wezen nog</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe langhe sal ick wesen <rhyme label="a" type="m">noch</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Jn't dal der traenen vol <rhyme label="a" type="m" corresp="#s1:l1">bedroch</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">O Godt thoont u <rhyme label="b" type="m">bermhertigheydt</rhyme></l>
        <l id="s1:l4" met="4" type="-+">En treckt my uyt dees <rhyme label="b" type="m" corresp="#s1:l3">duysterheydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och moet ick hier noch langher <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">In dese wereldt! t'is my <rhyme label="a" type="m" corresp="#s2:l1">pijn</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">In groodt miseri en <rhyme label="b" type="m">dangier</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Altijdt vol droefheydt noeyt <rhyme label="b" type="m" corresp="#s2:l3">plesier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och hoe staet my de aerde <rhyme label="a" type="m">aen</rhyme>!</l>
        <l id="s3:l2" met="4" type="-+">Als ick den Hemel maer sien <rhyme label="a" type="m" corresp="#s3:l1">staen</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Als ick maer sien het <rhyme label="b" type="m">Sonne-licht</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Soo schemelt alle mijn <rhyme label="b" type="m" corresp="#s3:l3">ghesicht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dit leven my verdriet <rhyme label="a" type="m">aen-doet</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Soo dat ick dickwils schreyen <rhyme label="a" type="m" corresp="#s4:l1">moet</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Want soo ick peys' op <rhyme label="b" type="m">t'Hemelrijck</rhyme></l>
        <l id="s4:l4" met="4" type="-+">De aerd' en acht ick niet als <rhyme label="b" type="m" corresp="#s4:l3">slijck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Moet ick aldus in <rhyme label="a" type="m">onghenught</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Hier lammenteren met <rhyme label="a" type="m" corresp="#s5:l1">ghesught</rhyme>!</l>
        <l id="s5:l3" met="4" type="-+">Mijn jonghe daeghen ick <rhyme label="b" type="m">versleyt</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">O Godt siet eens wat dat my <rhyme label="b" type="m" corresp="#s5:l3">leyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sught ick maer eens naer t'Hemels <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">De wereldt houd my met den <rhyme label="a" type="m" corresp="#s6:l1">voet</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Soo dat ick op-waerts niet en <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Soo lanck ick ligg' in desen <rhyme label="b" type="m" corresp="#s6:l3">ban</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och waer dees stricken eens <rhyme label="a" type="m">ont'aen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Soo soud ick' naer den Hemel <rhyme label="a" type="m" corresp="#s7:l1">gaen</rhyme>!</l>
        <l id="s7:l3" met="4" type="-+">Maer neen elaes! sy houden <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Oft dat ick sucht, oft dat ick <rhyme label="b" type="m" corresp="#s7:l3">schrey</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hebt doch kompassie dan met <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Wilt mijne siel eens maecken <rhyme label="a" type="m" corresp="#s8:l1">bly</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Laet my ghenieten u <rhyme label="b" type="m">aenschijn</rhyme>;</l>
        <l id="s8:l4" met="4" type="-+">Soo sal ghenesen mijne <rhyme label="b" type="m" corresp="#s8:l3">pijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ontfanght my dan in't <rhyme label="a" type="m">Vaeders-landt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Daer ghy Ã´ Godt, sit <rhyme label="a" type="m" corresp="#s9:l1">triumphant</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Laet my daer in gheraecken <rhyme label="b" type="m">ras</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Soo wordt mijn siele wel te <rhyme label="b" type="m" corresp="#s9:l3">pas</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Komt Jesu, komt dan metter <rhyme label="a" type="m">spoet</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Met u te sijn, gheen dinck soo <rhyme label="a" type="m" corresp="#s10:l1">soet</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">Ontfanght my onder u <rhyme label="b" type="m">ghetal</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Dan ben ick vry van quaeden <rhyme label="b" type="m" corresp="#s10:l3">val</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
