      <tag>devout song</tag>
      <tag>passing song</tag>
    </tags>
    <melody>Mijn heer van Valkenstein</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ic wil me ende ic wil <rhyme label="a" type="m">mee</rhyme></l>
        <l id="s1:l2" met="3" type="-+">vander werlt soe wil ic <rhyme label="b" type="f">scheyden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">heer Jhesus is die liefste <rhyme label="c" type="m">myn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">nae hem soe wil ic <rhyme label="b" type="f" corresp="#s1:l2">beyden</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och edelle here van <rhyme label="a" type="m">hemelryke</rhyme></l>
        <l id="s2:l2" met="3" type="-+">nemet ons in uwer <rhyme label="b" type="f">genaden</rhyme></l>
        <l id="s2:l3" met="4" type="-+">gy hebt ons alsoe duer <rhyme label="c" type="m">gecost</rhyme></l>
        <l id="s2:l4" met="3" type="-+">mit uwen hiligen <rhyme label="b" type="f" corresp="#s2:l2">bloede</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick sach Jhesus aenden cruce <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">sal hi daer lange aen <rhyme label="b" type="f">dueren</rhyme></l>
        <l id="s3:l3" met="4" type="-+">soe wil ic onder den cruce <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">ende helpen marien <rhyme label="b" type="f" corresp="#s3:l2">trueren</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick sach Jhesus aenden cruce <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">myn alre liefste <rhyme label="b" type="f">mynne</rhyme></l>
        <l id="s4:l3" met="4" type="-+">dat ic hem niet gehelpen en <rhyme label="c" type="m">kan</rhyme></l>
        <l id="s4:l4" met="3" type="-+">dat breket my myne <rhyme label="b" type="f" corresp="#s4:l2">synne</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och ziele dat moet ommer <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">ende gi moet ommer <rhyme label="b" type="f">liden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">ick leet wal xxxiij <rhyme label="c" type="m">jaer</rhyme></l>
        <l id="s5:l4" met="3" type="-+">ende al om uwen <rhyme label="b" type="f" corresp="#s5:l2">willen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ick heb een heymelic <rhyme label="a" type="m">vonckelkyn</rhyme></l>
        <l id="s6:l2" met="3" type="-+">in mynen herten <rhyme label="b" type="f">geuonden</rhyme></l>
        <l id="s6:l3" met="4" type="-+">dat verlicht die ziele <rhyme label="c" type="m">myn</rhyme></l>
        <l id="s6:l4" met="3" type="-+">het quam wt Jhesus <rhyme label="b" type="f" corresp="#s6:l2">wonden</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wanneer ic Jhesus <rhyme label="a" type="m">ansie</rhyme></l>
        <l id="s7:l2" met="3" type="-+">myt synen hiligen <rhyme label="b" type="f">wonden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">soe doet my myn hert soe <rhyme label="c" type="m">we</rhyme></l>
        <l id="s7:l4" met="3" type="-+">van mynnentlicken <rhyme label="b" type="f" corresp="#s7:l2">wonder</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wal hen ende laet ons blyde <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">dat gaet nae onsen <rhyme label="b" type="f">begeren</rhyme></l>
        <l id="s8:l3" met="4" type="-+">wil Jhesus onse hulper <rhyme label="c" type="m">syn</rhyme></l>
        <l id="s8:l4" met="3" type="-+">soe en mach ons nyemant <rhyme label="b" type="f" corresp="#s8:l2">deren</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
