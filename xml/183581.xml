  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ZA lustig jonge <rhyme label="a" type="f">gezellen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilje wagen een <rhyme label="b" type="m">kans</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wilt uw dan maer tot 't minnen <rhyme label="a" type="f" corresp="#s1:l1">bestellen</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Hier, hier hebje nog goede <rhyme label="b" type="m" corresp="#s1:l2">avans</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een Iuffrouw is daer te <rhyme label="a" type="f">kijken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Binnen de Amstel <rhyme label="b" type="m">Stad</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Al die haer siet die meent te <rhyme label="a" type="f" corresp="#s2:l1">bezwyken</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Ey! ey! wat Monster is <rhyme label="b" type="m" corresp="#s2:l2">dat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sy seggen sy heeft een paer <rhyme label="a" type="f">tanden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wel van een Vierendeel <rhyme label="b" type="m">lang</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Beeren Pooten soo syne haer <rhyme label="a" type="f" corresp="#s3:l1">handen</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Wie, wie sou 'er niet worde <rhyme label="b" type="m" corresp="#s3:l2">bang</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sy seggen nog wie sou niet <rhyme label="a" type="f">schrikken</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Sy heeft 'er een Paerde <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wat Haen sou sulk een Hennetje <rhyme label="a" type="f" corresp="#s4:l1">Pikken</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Daer, daer je van beeven <rhyme label="b" type="m" corresp="#s4:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Voor haer gesigt soo als sy <rhyme label="a" type="f">seggen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Heeft zy een Silverde <rhyme label="b" type="m">Plaet</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Wie drommel sou by haer durven <rhyme label="a" type="f" corresp="#s5:l1">leggen</rhyme></l>
        <l id="s5:l4" met="5" type="-+">Als, als men daer syn oog op <rhyme label="b" type="m" corresp="#s5:l2">slaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sy seggen al die haer wil <rhyme label="a" type="f">trouwen</rhyme>:</l>
        <l id="s6:l2" met="3" type="-+">Die krijgt 'er een <rhyme label="b" type="m">kapitael</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer hy twee Susjes van kan <rhyme label="a" type="f" corresp="#s6:l1">onderhouwen</rhyme>!</l>
        <l id="s6:l4" met="5" type="-+">Al, al was de bloed nog soo <rhyme label="b" type="m" corresp="#s6:l2">kael</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ian Dirksen sou het gaen <rhyme label="a" type="f">waegen</rhyme>;</l>
        <l id="s7:l2" met="3" type="-+">Om te gaen bieden syn <rhyme label="b" type="m">trouw</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hy sey, ik heb wol ein Fransman <rhyme label="a" type="f" corresp="#s7:l1">verslagen</rhyme>,</l>
        <l id="s7:l4" met="5" type="-+">Ik, ik vrees niet voor dese <rhyme label="b" type="m" corresp="#s7:l2">Iuffrouw</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maer toen hy kwam in de <rhyme label="a" type="f">Kamer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Doe was de bloed in <rhyme label="b" type="m">nood</rhyme>!</l>
        <l id="s8:l3" met="4" type="-+">Syn Hart in syn lyf sloeg als een <rhyme label="a" type="f" corresp="#s8:l1">Hamer</rhyme>,</l>
        <l id="s8:l4" met="5" type="-+">Eyder, eyder meende als dat hy was <rhyme label="b" type="m" corresp="#s8:l2">dood</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">De Barrebier moest men gaen <rhyme label="a" type="f">haelen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ian Dirksen moest 'er <rhyme label="b" type="m">geprikt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">De Meester moest men ten duurste <rhyme label="a" type="f" corresp="#s9:l1">betaelen</rhyme>,</l>
        <l id="s9:l4" met="5" type="-+">Want, want die was zelfs <rhyme label="b" type="m" corresp="#s9:l2">geschrikt</rhyme>.</l>
      </lg>
    </lg>
  </text>
