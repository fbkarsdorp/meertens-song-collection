      <year-start>1628</year-start>
      <year-end>1628</year-end>
    </date>
    <location>
      <orginal-name>leuven</orginal-name>
      <standard-name>Leuven, Belgium</standard-name>
      <coordinates>
        <lon>50.879202</lon>
        <lat>4.7011675</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Es ist das Heil uns kommen her</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Christe waerachtich <rhyme label="a" type="m">Pellicaen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Een Pellicaen <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ons vleesch hebt ghy genomen <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ghy wild’ ons broeder <rhyme label="b" type="f" corresp="#s1:l2">wesen</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Ghy hebt u borst open <rhyme label="a" type="m" corresp="#s1:l1">ghedaen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">V bloet hebt ghy uyt laten <rhyme label="a" type="m" corresp="#s1:l1">gaen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Om ons al te <rhyme label="b" type="f" corresp="#s1:l2">ghenesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy zijt voorwaer dat eeuwich <rhyme label="a" type="m">broot</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Fonteyn van ‘teeuwig <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Al zijn wy naer de siele <rhyme label="a" type="m" corresp="#s2:l1">doot</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Door u soo wort <rhyme label="b" type="f" corresp="#s2:l2">verdreven</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Alle ghebreck, en alle <rhyme label="a" type="m" corresp="#s2:l1">noot</rhyme>:</l>
        <l id="s2:l6" met="4" type="-+">Die u ontfanght, al is hy <rhyme label="a" type="m" corresp="#s2:l1">bloot</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Rijckdom wort hem <rhyme label="b" type="f" corresp="#s2:l2">ghegheven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O soeten Heer’, o Vader <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O Heere der <rhyme label="b" type="f">heyr-krachten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ghy komt betalen Adams <rhyme label="a" type="m" corresp="#s3:l1">boet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Verlossen all’ <rhyme label="b" type="f" corresp="#s3:l2">gheslachten</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Maer Heer hoe schinckt ghy <rhyme label="a" type="m" corresp="#s3:l1">overvloet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">V precieus en dierbaer <rhyme label="a" type="m" corresp="#s3:l1">bloet</rhyme>!</l>
        <l id="s3:l7" met="3" type="-+">Och laet ons dat groot <rhyme label="b" type="f" corresp="#s3:l2">achten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">’tIs een waerachtich <rhyme label="a" type="m">Sacrament</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat Iesus selfs <rhyme label="b" type="f">instelde</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Eer dat begonst sijn groot <rhyme label="a" type="m" corresp="#s4:l1">torment</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In’t klaer hy dat <rhyme label="b" type="f" corresp="#s4:l2">vertelde</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dat is een spijs seer <rhyme label="a" type="m" corresp="#s4:l1">excellent</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Neemt nut mijn lichaem <rhyme label="a" type="m" corresp="#s4:l1">ongheschent</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Aldus hy dat <rhyme label="b" type="f" corresp="#s4:l2">bevelde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Iesu zijt <rhyme label="a" type="m">ghebenedijt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat door vijf woorden <rhyme label="b" type="f">krachtich</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Een suyver broot sonder <rhyme label="a" type="m" corresp="#s5:l1">respijt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Wort u persoon <rhyme label="b" type="f" corresp="#s5:l2">waerachtich</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Ketters die ongheloovich <rhyme label="a" type="m" corresp="#s5:l1">zijt</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Weest toch ghedachtich t’allen <rhyme label="a" type="m" corresp="#s5:l1">tijt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dat Godts woort is <rhyme label="b" type="f" corresp="#s5:l2">almachtich</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
