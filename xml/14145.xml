  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CHristus heeft ghesproken <rhyme label="a" type="m">ient</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Soo in Mattheus staet <rhyme label="b" type="f">geschreven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat die <rhyme label="a" type="m" corresp="#s1:l1">vreesen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Salich sullen <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die daer zijn <rhyme label="b" type="f" corresp="#s1:l2">beseven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Geestelijck arm <rhyme label="b" type="f" corresp="#s1:l2">verheven</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Aldus seer <rhyme label="a" type="m" corresp="#s1:l1">fijn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Met waren <rhyme label="a" type="m" corresp="#s1:l1">schijn</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Dat tot elck <rhyme label="a" type="m" corresp="#s1:l1">termijn</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Ghy alsoo oock meucht seer <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Voor die Heere der Heeren <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s1:l12" met="3" type="+-">Om in vreucht te vermeeren <rhyme label="d" type="m" corresp="#s1:l11">gaen</rhyme>,</l>
        <l id="s1:l13" met="3" type="-+">Dat wensch ick u <rhyme label="c" type="m" corresp="#s1:l10">eenpaer</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">Al voor een nieuwe <rhyme label="c" type="m" corresp="#s1:l10">Jaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Noch sprack Christus daer <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Salich zijn die <rhyme label="b" type="f">draghen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Rauwe <rhyme label="a" type="m" corresp="#s2:l1">ontbly</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Sulcken rouwe <rhyme label="a" type="m" corresp="#s2:l1">vry</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Als hem oock mach <rhyme label="b" type="f" corresp="#s2:l2">behaghen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wilt tot allen <rhyme label="b" type="f" corresp="#s2:l2">daghen</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Naer jaghen // <rhyme label="a" type="m" corresp="#s2:l1">ghy</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Sonder <rhyme label="a" type="m" corresp="#s2:l1">vilony</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Soo zijn herte <rhyme label="a" type="m" corresp="#s2:l1">sy</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">En zijnen wille <rhyme label="c" type="m">eerbaer</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Alle dese rauwe // <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s2:l12" met="3" type="+-">Tot zijnen aenschouwe // <rhyme label="d" type="m" corresp="#s2:l11">soet</rhyme>,</l>
        <l id="s2:l13" met="3" type="-+">Dat wensch ick u <rhyme label="c" type="m" corresp="#s2:l10">eenpaer</rhyme>,</l>
        <l id="s2:l14" met="3" type="-+">Al voor een nieuwe <rhyme label="c" type="m" corresp="#s2:l10">Jaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Voorder sprack hy als ooc <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En heeft die salich <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die sachtmoedich <rhyme label="a" type="m" corresp="#s3:l1">bloot</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Sijn alsoo hy <rhyme label="a" type="m" corresp="#s3:l1">ontsloot</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En sullen so wy <rhyme label="b" type="f" corresp="#s3:l2">lesen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Besittende <rhyme label="b" type="f" corresp="#s3:l2">wesen</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Het aertrijck <rhyme label="a" type="m" corresp="#s3:l1">groot</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Sulck een herte <rhyme label="a" type="m" corresp="#s3:l1">mijnioot</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Der boosheyt <rhyme label="a" type="m" corresp="#s3:l1">ghedoot</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Al sonder eenich <rhyme label="c" type="m">beswaer</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">En dat alle benijden // <rhyme label="d" type="m">vliet</rhyme>,</l>
        <l id="s3:l12" met="3" type="+-">Tot allen tijden // <rhyme label="d" type="m" corresp="#s3:l11">siet</rhyme>,</l>
        <l id="s3:l13" met="3" type="-+">Dat wensch ick u <rhyme label="c" type="m" corresp="#s3:l10">eenpaer</rhyme>,</l>
        <l id="s3:l14" met="3" type="-+">Alle voor een nieuwe <rhyme label="c" type="m" corresp="#s3:l10">Jaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Noch heeft die Heere hoort dit <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die oock salich <rhyme label="b" type="f">gheheeten</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Alle die <rhyme label="a" type="m" corresp="#s4:l1">saen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hongheren wilt dit <rhyme label="a" type="m" corresp="#s4:l1">verstaen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En dorsten wilt dit <rhyme label="b" type="f" corresp="#s4:l2">weten</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Naer des gherechts <rhyme label="b" type="f" corresp="#s4:l2">secreten</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Want <rhyme label="a" type="m" corresp="#s4:l1">onbelaen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Sullen sy sonder <rhyme label="a" type="m" corresp="#s4:l1">schaen</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Oock al <rhyme label="a" type="m" corresp="#s4:l1">ontfaen</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Versadinghe <rhyme label="c" type="m">voorwaer</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Sulcke honger sonder vermyden // <rhyme label="d" type="m">iet</rhyme></l>
        <l id="s4:l12" met="3" type="+-">Soo alle het belyden // <rhyme label="d" type="m" corresp="#s4:l11">hiet</rhyme>,</l>
        <l id="s4:l13" met="3" type="-+">Dat wensch ick u <rhyme label="c" type="m" corresp="#s4:l10">eenpaer</rhyme>,</l>
        <l id="s4:l14" met="3" type="-+">Al voor een nieuwe <rhyme label="c" type="m" corresp="#s4:l10">Jaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Noch heeft die Heere <rhyme label="a" type="m">geseyt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En haer salicheyt gaen <rhyme label="b" type="f">verclaren</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die <rhyme label="a" type="m" corresp="#s5:l1">barmherticheyt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Sijn gebruyckende <rhyme label="a" type="m" corresp="#s5:l1">planteyt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En sullen sonder <rhyme label="b" type="f" corresp="#s5:l2">beswaren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Bermharticheyt <rhyme label="b" type="f" corresp="#s5:l2">vergaren</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Deur sulcks <rhyme label="a" type="m" corresp="#s5:l1">verbeyt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Van Gods <rhyme label="a" type="m" corresp="#s5:l1">Maeyesteyt</rhyme>,</l>
        <l id="s5:l9" met="2" type="-+">Sonder <rhyme label="a" type="m" corresp="#s5:l1">afscheyt</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Sulck een hert deur ons <rhyme label="c" type="m">middelaer</rhyme></l>
        <l id="s5:l11" met="4" type="+-">Sonder eenich verseren // <rhyme label="d" type="m">quaet</rhyme>,</l>
        <l id="s5:l12" met="3" type="+-">Soo de schrifteur algeren // <rhyme label="d" type="m" corresp="#s5:l11">gaet</rhyme>,</l>
        <l id="s5:l13" met="3" type="-+">Dat wensch ick u <rhyme label="c" type="m" corresp="#s5:l10">eenpaer</rhyme>,</l>
        <l id="s5:l14" met="3" type="-+">Al voor een nieuwe <rhyme label="c" type="m" corresp="#s5:l10">Jaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Noch heeft Christus seer <rhyme label="a" type="m">snel</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Geheeten salich <rhyme label="b" type="f">voordachtich</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Al die reyn <rhyme label="a" type="m" corresp="#s6:l1">wel</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Sijn van herten <rhyme label="a" type="m" corresp="#s6:l1">opstel</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Want sy sullen <rhyme label="b" type="f" corresp="#s6:l2">waerachtich</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Godt aenschauwen seer <rhyme label="b" type="f" corresp="#s6:l2">crachtich</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Vry van <rhyme label="a" type="m" corresp="#s6:l1">ghequel</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Van onreynicheyt <rhyme label="a" type="m" corresp="#s6:l1">fel</rhyme>,</l>
        <l id="s6:l9" met="2" type="-+">Hoort mijn <rhyme label="a" type="m" corresp="#s6:l1">vermel</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Sulck een herte <rhyme label="c" type="m">aldaer</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">Tot zijnen Oordeele // <rhyme label="d" type="m">voort</rhyme></l>
        <l id="s6:l12" met="3" type="+-">Tot uwen voordeele // <rhyme label="d" type="m" corresp="#s6:l11">hoort</rhyme>,</l>
        <l id="s6:l13" met="3" type="-+">Dat wensch ick u <rhyme label="c" type="m" corresp="#s6:l10">eenpaer</rhyme>,</l>
        <l id="s6:l14" met="3" type="-+">Al voor een nieuwe <rhyme label="c" type="m" corresp="#s6:l10">Jaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Noch heeft Christus <rhyme label="a" type="m">verstaet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Haer salicheyt gaen <rhyme label="b" type="f">verconden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die <rhyme label="a" type="m" corresp="#s7:l1">delicaet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Maecken der vreden <rhyme label="a" type="m" corresp="#s7:l1">graet</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Daer tot allen <rhyme label="b" type="f" corresp="#s7:l2">stonden</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Twist soude zijn <rhyme label="b" type="f" corresp="#s7:l2">bevonden</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Maecken dit <rhyme label="a" type="m" corresp="#s7:l1">vaet</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Der twist een <rhyme label="a" type="m" corresp="#s7:l1">aflaet</rhyme>,</l>
        <l id="s7:l9" met="2" type="-+">Tot haerder <rhyme label="a" type="m" corresp="#s7:l1">baet</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Want sy sullen hier <rhyme label="c" type="m">naer</rhyme>,</l>
        <l id="s7:l11" met="4" type="+-">Heeten Godts kinderen // <rhyme label="d" type="m">dan</rhyme>,</l>
        <l id="s7:l12" met="3" type="+-">Sulcx sonder daer te verminderen // <rhyme label="d" type="m" corresp="#s7:l11">van</rhyme> ,</l>
        <l id="s7:l13" met="3" type="-+">Dat wensch ick u <rhyme label="c" type="m" corresp="#s7:l10">eenpaer</rhyme>,</l>
        <l id="s7:l14" met="3" type="-+">Al voor een nieuwe <rhyme label="c" type="m" corresp="#s7:l10">Jaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Prince noch heeft die Heer <rhyme label="a" type="m">playsant</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Haer salicheyt gaen <rhyme label="b" type="f">verhalen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dien aen elcken <rhyme label="a" type="m" corresp="#s8:l1">cant</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sijn vervolcht <rhyme label="a" type="m" corresp="#s8:l1">abondant</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Om des gerechticheyts <rhyme label="b" type="f" corresp="#s8:l2">taelen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Want sy sullen voor <rhyme label="b" type="f" corresp="#s8:l2">quaelen</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Seer <rhyme label="a" type="m" corresp="#s8:l1">triumphant</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Het hemelsche <rhyme label="a" type="m" corresp="#s8:l1">lant</rhyme>,</l>
        <l id="s8:l9" met="2" type="-+">Besitten <rhyme label="a" type="m" corresp="#s8:l1">vayliant</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Al met der heyligher <rhyme label="c" type="m">schaer</rhyme>,</l>
        <l id="s8:l11" met="4" type="+-">Dat u dit mach ghebeuren // <rhyme label="d" type="m">mee</rhyme>,</l>
        <l id="s8:l12" met="3" type="+-">Bevrijt al van der treuren // <rhyme label="d" type="m" corresp="#s8:l11">see</rhyme>,</l>
        <l id="s8:l13" met="3" type="-+">Dat wensch ick u <rhyme label="c" type="m" corresp="#s8:l10">eenpaer</rhyme>,</l>
        <l id="s8:l14" met="3" type="-+">Al voor een nieuwe <rhyme label="c" type="m" corresp="#s8:l10">Jaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
