  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EYst, ende hebt goe' <rhyme label="a" type="f">hoopen</rhyme>;</l>
        <l id="s1:l2" met="3" type="-+">Want gy het sult <rhyme label="b" type="m">ontfaen</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Klopt, en de deur sal <rhyme label="a" type="f" corresp="#s1:l1">oopen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Voor u werden <rhyme label="b" type="m" corresp="#s1:l2">gedaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soekt, ende gy sult <rhyme label="a" type="f">vinden</rhyme>:</l>
        <l id="s2:l2" met="3" type="-+">En al die geen die <rhyme label="b" type="m">vraeght</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Van sijne trouwe <rhyme label="a" type="f" corresp="#s2:l1">vrinden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat krijght en meede <rhyme label="b" type="m" corresp="#s2:l2">draeght</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al die soekt, vindt sijn <rhyme label="a" type="f">bate</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Al die klopt aen de <rhyme label="b" type="m">poort</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die sal men binnen <rhyme label="a" type="f" corresp="#s3:l1">late</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wanneer als men hem <rhyme label="b" type="m" corresp="#s3:l2">hoort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wie is 'er van <rhyme label="a" type="f">u-lieden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Soo boos, of soo <rhyme label="b" type="m">verkeert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die sijn Kindt steen sal <rhyme label="a" type="f" corresp="#s4:l1">bieden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wanneer het broodt <rhyme label="b" type="m" corresp="#s4:l2">begeert</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wie of sijn Kindt sal <rhyme label="a" type="f">langen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wanneer het roept om <rhyme label="b" type="m">vis</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Een vreeselijke <rhyme label="a" type="f" corresp="#s5:l1">slange</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die welk fenijnigh <rhyme label="b" type="m" corresp="#s5:l2">is</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gy, die sijt quaet van <rhyme label="a" type="f">leeven</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En niet heel veel en <rhyme label="b" type="m">dooght</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wel goede dingen <rhyme label="a" type="f" corresp="#s6:l1">geeven</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Aen uwe Kinders <rhyme label="b" type="m" corresp="#s6:l2">mooght</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hoe veel of dan te <rhyme label="a" type="f">meere</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Uw Hemels Vader <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Aen die van hem <rhyme label="a" type="f" corresp="#s7:l1">begeere</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hy altijdt goet doen <rhyme label="b" type="m" corresp="#s7:l2">sel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Al 't geene gy soudt <rhyme label="a" type="f">wenschen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Dat u een ander <rhyme label="b" type="m">deedt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Doet gy dat ander <rhyme label="a" type="f" corresp="#s8:l1">menschen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dat 's d'Wet en de <rhyme label="b" type="m" corresp="#s8:l2">Propheet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
