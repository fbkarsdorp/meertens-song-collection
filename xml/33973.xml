  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">DIcht aen den <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Paeschens hooge <rhyme label="b" type="m">Feest</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Uyt haet en <rhyme label="a" type="m" corresp="#s1:l1">nijdt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Vergadert sijn <rhyme label="b" type="m" corresp="#s1:l2">geweest</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">De <rhyme label="c" type="m">Principael</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Der Joodsche <rhyme label="d" type="m">Priesteren</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">In Caiphas <rhyme label="c" type="m" corresp="#s1:l5">Sael</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Om daer te <rhyme label="d" type="m" corresp="#s1:l6">raedtslagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Sy sloegen <rhyme label="a" type="m">raedt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hoe sy met listen <rhyme label="b" type="m">snoodt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Of loosen <rhyme label="a" type="m" corresp="#s2:l1">daedt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Eens moghten krijgen <rhyme label="b" type="m" corresp="#s2:l2">doodt</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Jesum, ons <rhyme label="c" type="m">Heer</rhyme>;</l>
        <l id="s2:l6" met="3" type="-+">Maer niet op Paeschens <rhyme label="d" type="m">Feest</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Want sy nogh <rhyme label="c" type="m" corresp="#s2:l5">seer</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Waren voor 't volk <rhyme label="d" type="m" corresp="#s2:l6">bevreest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Sy sorghden <rhyme label="a" type="m">dan</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Of 't vollik over <rhyme label="b" type="m">hoop</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Moght koomen <rhyme label="a" type="m" corresp="#s3:l1">an</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En maken een <rhyme label="b" type="m" corresp="#s3:l2">oploop</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Den <rhyme label="c" type="m">Satanas</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Alreede <rhyme label="d" type="m">in-gegaen</rhyme></l>
        <l id="s3:l7" met="2" type="-+">In Judas <rhyme label="c" type="m" corresp="#s3:l5">was</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Die quam toen juyst daer <rhyme label="d" type="m" corresp="#s3:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Hy quam <rhyme label="a" type="m">aldaer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">By deese <rhyme label="b" type="m">boos-wighten</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">En sprak tot <rhyme label="a" type="m" corresp="#s4:l1">haer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ik sal hem <rhyme label="b" type="m" corresp="#s4:l2">leeveren</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Wat wilt gy <rhyme label="c" type="m">my</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Daer voor <rhyme label="d" type="m">begiftigen</rhyme>?</l>
        <l id="s4:l7" met="2" type="-+">Dus looven <rhyme label="c" type="m" corresp="#s4:l5">sy</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Hem dartigh <rhyme label="d" type="m" corresp="#s4:l6">penningen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Van nu <rhyme label="a" type="m">voortaen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Socht hy dit boose <rhyme label="b" type="m">feyt</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Te <rhyme label="a" type="m" corresp="#s5:l1">onderstaen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Met d'eerst <rhyme label="b" type="m" corresp="#s5:l2">geleegentheyt</rhyme>;</l>
        <l id="s5:l5" met="2" type="-+">Dus werdt <rhyme label="c" type="m">gesocht</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Heer Iesus tot 'er <rhyme label="d" type="m">doodt</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Ende <rhyme label="c" type="m" corresp="#s5:l5">verkocht</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Van sijn Discipel <rhyme label="d" type="m" corresp="#s5:l6">snoodt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Fy boose <rhyme label="a" type="m">knecht</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">Wat of u heeft <rhyme label="b" type="m">verleydt</rhyme>?</l>
        <l id="s6:l3" met="2" type="-+">Vry rondt uyt <rhyme label="a" type="m" corresp="#s6:l1">seght</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Het was de <rhyme label="b" type="m" corresp="#s6:l2">gierigheydt</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Waerom lijdt <rhyme label="c" type="m">gy</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">O Iesu, deese <rhyme label="d" type="m">spijt</rhyme>?</l>
        <l id="s6:l7" met="2" type="-+">Dat souden <rhyme label="c" type="m" corresp="#s6:l5">wy</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Van Satan sijn <rhyme label="d" type="m" corresp="#s6:l6">bevrijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
