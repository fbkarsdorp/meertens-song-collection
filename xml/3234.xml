  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEn arbeydt en het vlijtigh <rhyme label="a" type="f">poghen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Maeckt oock dat uyt een harde <rhyme label="b" type="m">key</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Komt vlocken vyers uyt <rhyme label="a" type="f" corresp="#s1:l1">voortgevlogen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Wanneermen die neemt <rhyme label="b" type="m" corresp="#s1:l2">allebey</rhyme></l>
        <l id="s1:l5" met="2" type="-+">T'saem met <rhyme label="c" type="f">malkander</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En dat met <rhyme label="d" type="m">gheweldt</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">D'een tegen <rhyme label="c" type="f" corresp="#s1:l5">d'ander</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Dapper wordt <rhyme label="d" type="m" corresp="#s1:l6">ghevelt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">En teghen aen <rhyme label="d" type="m" corresp="#s1:l6">ghesteldt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'t Verstompte breyn door lust en <rhyme label="a" type="f">lesen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">In menich over-aerdigh <rhyme label="b" type="m">Boeck</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sal haest geheel hervorremt <rhyme label="a" type="f" corresp="#s2:l1">wesen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En worden wijs, beset en <rhyme label="b" type="m" corresp="#s2:l2">kloeck</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">'t Vyer, sonder <rhyme label="c" type="f">stoocken</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Ende acht op <rhyme label="d" type="m">slaen</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">sal slechts met <rhyme label="c" type="f" corresp="#s2:l5">roocken</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Vadsigh heel <rhyme label="d" type="m" corresp="#s2:l6">vergaen</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En schuyven uyt de <rhyme label="d" type="m" corresp="#s2:l6">baen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer krijght'et voedtsel, 't sal staegh <rhyme label="a" type="f">gloeyen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Tot lust, vernoegingh van die 't <rhyme label="b" type="m">siet</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">De wetenschap sal wacker <rhyme label="a" type="f" corresp="#s3:l1">groeyen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Indiense stof, nae wensch, <rhyme label="b" type="m" corresp="#s3:l2">gheniet</rhyme>;</l>
        <l id="s3:l5" met="2" type="-+">Sy sal <rhyme label="c" type="f">vermeeren</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Ende worden <rhyme label="d" type="m">groot</rhyme>:</l>
        <l id="s3:l7" met="2" type="-+">Die haer <rhyme label="c" type="f" corresp="#s3:l5">begheeren</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Raecken uytte <rhyme label="d" type="m" corresp="#s3:l6">noodt</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">En vreesen voor geen <rhyme label="d" type="m" corresp="#s3:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer hoovaerdy moet van 'er <rhyme label="a" type="f">wijcken</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Want waer die is, is wijsheyt <rhyme label="b" type="m">windt</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Want dese sal 'tverstant doen <rhyme label="a" type="f" corresp="#s4:l1">swijcken</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En maken dat 'et heylloos <rhyme label="b" type="m" corresp="#s4:l2">swindt</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Ghelijck in <rhyme label="c" type="f">baren</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Daer een driftigh <rhyme label="d" type="m">Schip</rhyme></l>
        <l id="s4:l7" met="2" type="-+">In komt <rhyme label="c" type="f" corresp="#s4:l5">ghevaren</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">'t Raeckt wel in de <rhyme label="d" type="m" corresp="#s4:l6">knip</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">En op een woeste <rhyme label="d" type="m" corresp="#s4:l6">Klip</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'t Vernuft, door hoovaerdy <rhyme label="a" type="f">gedreven</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Verslingert op een woeste <rhyme label="b" type="m">Baen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daer 't vaeck de geest wel wordt <rhyme label="a" type="f" corresp="#s5:l1">gedreven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En moet elendigh henen <rhyme label="b" type="m" corresp="#s5:l2">gaen</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">Maer nedrigh <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Met verstandt <rhyme label="d" type="m">versien</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">En hoeft in <rhyme label="c" type="f" corresp="#s5:l5">desen</rhyme></l>
        <l id="s5:l8" met="3" type="+-">Nimmer om te <rhyme label="d" type="m" corresp="#s5:l6">sien</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Of achter uyt te <rhyme label="d" type="m" corresp="#s5:l6">vlien</rhyme>.</l>
      </lg>
    </lg>
  </text>
