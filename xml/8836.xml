  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EN wilt ghy dan de Waerheyt <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Bekennen noch <rhyme label="b" type="f">Beminnen</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Noch Oord'len recht sonder <rhyme label="a" type="m" corresp="#s1:l1">verdriet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ghy Menschen quaet van <rhyme label="b" type="f" corresp="#s1:l2">sinnen</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">Al willens ghy t'onrecht <rhyme label="c" type="m">Aenvaert</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Tyrannich in den <rhyme label="d" type="f">Lande</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Gaet wreff'len altoos <rhyme label="c" type="m" corresp="#s1:l5">Onvervaert</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Met Boosheydt uwer <rhyme label="d" type="f" corresp="#s1:l6">Hande</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">End' vraecht nae gheen <rhyme label="d" type="f" corresp="#s1:l6">Vermanen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De God'loos syn verkeert <rhyme label="a" type="m">All'gaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van Moeder Lijff <rhyme label="b" type="f">ontfanghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die Leug'naers dwalen all' met <rhyme label="a" type="m" corresp="#s2:l1">haer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En Woeden als die <rhyme label="b" type="f" corresp="#s2:l2">Slanghen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Als een dooff Ader die haer <rhyme label="c" type="m">Oor</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Toe stoppet <rhyme label="d" type="f">doorVerveeren</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Dat sy den Tooffnaer niet en <rhyme label="c" type="m" corresp="#s2:l5">hoor</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Een Meester van <rhyme label="d" type="f" corresp="#s2:l6">Besweeren</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Wat baet dan goede <rhyme label="d" type="f" corresp="#s2:l6">Leere</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godt wilt in haren Monde <rhyme label="a" type="m">snel</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Breken die groote <rhyme label="b" type="f">Tanden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Sy syn als Jonghe Leeuwen <rhyme label="a" type="m" corresp="#s3:l1">fel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">End' gaen nochtans te <rhyme label="b" type="f" corresp="#s3:l2">schanden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Als Water dat haer henen <rhyme label="c" type="m">Vloeyt</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Sy pooghen om te <rhyme label="d" type="f">schieten</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Die Vromen hier end' daer <rhyme label="c" type="m" corresp="#s3:l5">verstroyt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Maer (t'moet haer wel <rhyme label="d" type="f" corresp="#s3:l6">verdrieten</rhyme>)</l>
        <l id="s3:l9" met="3" type="-+">Ghebroken syn haer <rhyme label="d" type="f" corresp="#s3:l6">Pijlen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Jae als een vuyle Sleck <rhyme label="a" type="m">versmacht</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Vergaen sy sonder <rhyme label="b" type="f">Vruchte</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Als een Ontijdich vuyl <rhyme label="a" type="m" corresp="#s4:l1">Misdracht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Sien sy noch Son noch <rhyme label="b" type="f" corresp="#s4:l2">Luchte</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">End' eermen can bevinden <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Haer Struyck met Rijpe <rhyme label="d" type="f">Dooren</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">So salse t'Eenemael <rhyme label="c" type="m" corresp="#s4:l5">All'gaer</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Wtroeden Godes <rhyme label="d" type="f" corresp="#s4:l6">Thooren</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Dewijl sy noch syn <rhyme label="d" type="f" corresp="#s4:l6">Jonghe</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als Godt soodane Wrake <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die Vroom' sal hem <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">End' sal dan Wasschen wel <rhyme label="a" type="m" corresp="#s5:l1">ghemoet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Sijn Voeten van all' <rhyme label="b" type="f" corresp="#s5:l2">Lijden</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Het sullen dan die Menschen <rhyme label="c" type="m">vry</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Gaen segghen met <rhyme label="d" type="f">ghevoege</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Die Vrome mach wel wesen <rhyme label="c" type="m" corresp="#s5:l5">bly</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Het coemt nae syn <rhyme label="d" type="f" corresp="#s5:l6">ghenoege</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">God is noch selfs al <rhyme label="d" type="f" corresp="#s5:l6">Richter</rhyme>.</l>
      </lg>
    </lg>
  </text>
