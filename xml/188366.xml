    <melody>Quem ferventi corde</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">QVem ferventi corde <rhyme label="a" type="f">concupivi</rhyme>,</l>
        <l id="s1:l2" met="5" type="+-">Per plateas avidè <rhyme label="a" type="f" corresp="#s1:l1">quaesivi</rhyme>:</l>
        <l id="s1:l3" met="5" type="+-">Ubi cubas ? ubi <rhyme label="b" type="f">requiescis</rhyme> ?</l>
        <l id="s1:l4" met="5" type="+-">Qui sic mihi sapis &amp; <rhyme label="b" type="f" corresp="#s1:l3">dulcescis</rhyme>;</l>
        <l id="s1:l5" met="7" type="+-">Vbi commoraris dulcis hospes <rhyme label="c" type="m">animae</rhyme> ?</l>
        <l id="s1:l6" met="4" type="+-">In moerore ,, Et <rhyme label="d" type="f">amore</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Semper exquisivi <rhyme label="c" type="m" corresp="#s1:l5">te</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Nunc inveni animae <rhyme label="a" type="f">dilectum</rhyme>,</l>
        <l id="s2:l2" met="5" type="+-">Ex centenis millibus <rhyme label="a" type="f" corresp="#s2:l1">electum</rhyme>,</l>
        <l id="s2:l3" met="5" type="+-">Fratrem meum foris <rhyme label="b" type="f">vagientem</rhyme>,</l>
        <l id="s2:l4" met="5" type="+-">Et materna ubera <rhyme label="b" type="f" corresp="#s2:l3">fugentem</rhyme>.</l>
        <l id="s2:l5" met="7" type="+-">Salve verbum Patris, ex Mariâ <rhyme label="c" type="m">floscule</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Nobis date ,, Nobis <rhyme label="d" type="f">nate</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Parvule mi <rhyme label="c" type="m" corresp="#s2:l5">Iesule</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Vox in terrâ turturis <rhyme label="a" type="f">audita</rhyme>,</l>
        <l id="s3:l2" met="5" type="+-">Mulris eras votis <rhyme label="a" type="f" corresp="#s3:l1">expetita</rhyme>:</l>
        <l id="s3:l3" met="5" type="+-">Ut me tuo fletu <rhyme label="b" type="f">recreares</rhyme>,</l>
        <l id="s3:l4" met="5" type="+-">Et vagitu perditam <rhyme label="b" type="f" corresp="#s3:l3">salvares</rhyme>,</l>
        <l id="s3:l5" met="7" type="+-">Salve verbum Patris, ex Mariâ <rhyme label="c" type="m">floscule</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Nobis date ,, Nobis <rhyme label="d" type="f">nate</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Parvule mi <rhyme label="c" type="m" corresp="#s3:l5">Iesule</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Iam te datur foris <rhyme label="a" type="f">invenire</rhyme>,</l>
        <l id="s4:l2" met="5" type="+-">Et amoris osculo <rhyme label="a" type="f" corresp="#s4:l1">lenire</rhyme>,</l>
        <l id="s4:l3" met="5" type="+-">O dilectè ! millies <rhyme label="b" type="f">optavi</rhyme>,</l>
        <l id="s4:l4" met="5" type="+-">Tua frui facie <rhyme label="b" type="f" corresp="#s4:l3">suavi</rhyme>.</l>
        <l id="s4:l5" met="7" type="+-">Salve verbum Patris, ex Mariâ <rhyme label="c" type="m">floscule</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Nobis date ,, nobis <rhyme label="d" type="f">nate</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Parvule mi <rhyme label="c" type="m" corresp="#s4:l5">Iesule</rhyme>.</l>
      </lg>
    </lg>
  </text>
