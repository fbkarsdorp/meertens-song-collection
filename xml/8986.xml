  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">IEsus CHRIstus onse <rhyme label="a" type="f">Heylandt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die van ons den thoorne Godes <rhyme label="a" type="f" corresp="#s1:l1">wandt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Door dat bitter Lijden <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Holp hy ons wt der Hellen <rhyme label="b" type="m" corresp="#s1:l3">pijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dat wy nimmer des <rhyme label="a" type="f">vergeten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Gaff hy ons syn Lichaem <rhyme label="a" type="f" corresp="#s2:l1">t'Eten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Verborghen in dat Broot so <rhyme label="b" type="m">cleyn</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">End te Drincken syn Bloet in <rhyme label="b" type="m" corresp="#s2:l3">Wijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wie hem totten Disch wil <rhyme label="a" type="f">maecken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Die heb wel acht op syne <rhyme label="a" type="f" corresp="#s3:l1">saecken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Want wie Onwaerdich hier toe <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Voor t'Leven hy den Doot <rhyme label="b" type="m" corresp="#s3:l3">ontfaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ghy soudt Godt den Vader <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dat hy dy soo wel woude <rhyme label="a" type="f" corresp="#s4:l1">spijsen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">End voor dijne <rhyme label="b" type="m">Missedaet</rhyme></l>
        <l id="s4:l4" met="4" type="-+">In doot syn Soon ghegheven <rhyme label="b" type="m" corresp="#s4:l3">haedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ghy soudt ghelooven en niet <rhyme label="a" type="f">wancken</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Dat een Spijse is der <rhyme label="a" type="f" corresp="#s5:l1">Crancken</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dien haer Hert van Sonden <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">End van Ancxt is bedroevet <rhyme label="b" type="m" corresp="#s5:l3">gaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Sulck ghenade end <rhyme label="a" type="f">barmherticheyt</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Soeckt een Hert in grooten <rhyme label="a" type="f" corresp="#s6:l1">Arbeyt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Is dy wel, soo blijft daer <rhyme label="b" type="m">van</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat ghy niet crijcht quaden <rhyme label="b" type="m" corresp="#s6:l3">Loon</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hy spreeckt selver coemt ghy <rhyme label="a" type="f">Armen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Laet my over u <rhyme label="a" type="f" corresp="#s7:l1">Ontfarmen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Gheen Meyster is den stercken <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Syn Const en acht hy oock niet <rhyme label="b" type="m" corresp="#s7:l3">groot</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Had' ghy selfs wat connen <rhyme label="a" type="f">verwerven</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Wat hoefd' ick dan voor dy te <rhyme label="a" type="f" corresp="#s8:l1">sterven</rhyme>?</l>
        <l id="s8:l3" met="4" type="-+">Dees disch dy oock niet <rhyme label="b" type="m">aengaet</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ist dat ghy selvest weten <rhyme label="b" type="m" corresp="#s8:l3">raedt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Ghelooft ghy van herten <rhyme label="a" type="f">gronde</rhyme></l>
        <l id="s9:l2" met="4" type="+-">En bekennet met den <rhyme label="a" type="f" corresp="#s9:l1">Monde</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Soo zijt ghy recht wel <rhyme label="b" type="m">gheschickt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die Spijse dan dijn Siel <rhyme label="b" type="m" corresp="#s9:l3">verquickt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Die Vrucht sal oock niet wt <rhyme label="a" type="f">blijven</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Dijnen Naesten sout ghy <rhyme label="a" type="f" corresp="#s10:l1">Lieven</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat hy dijns gheniet <rhyme label="b" type="m">voortaen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Ghelijck God heeft aen dy <rhyme label="b" type="m" corresp="#s10:l3">ghedaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
