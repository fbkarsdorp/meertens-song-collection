  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Heer Iesu vol <rhyme label="a" type="f">ge-na-de</rhyme>!</l>
        <l id="s1:l2" met="5" type="+-">Slaet u oogen op mijn groote <rhyme label="b" type="m">smart</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wilt my van druck <rhyme label="a" type="f" corresp="#s1:l1">ontladen</rhyme>,</l>
        <l id="s1:l4" met="5" type="+-">Die omcingelt heeft mijn drouvigh <rhyme label="b" type="m" corresp="#s1:l2">hart</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Wilt mijne siel <rhyme label="c" type="f">ontfermen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Vergeven wilt mijn <rhyme label="d" type="m">sond'</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Wilt dan de hell' <rhyme label="c" type="f" corresp="#s1:l5">beschermen</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">voor de welck' ghy zijt <rhyme label="d" type="m" corresp="#s1:l6">gewondt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Doet uwe wonden <rhyme label="a" type="f">open</rhyme>,</l>
        <l id="s2:l2" met="5" type="+-">Wilt my wasschen in u dierbaer <rhyme label="b" type="m">bloedt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Laet die fonteyne <rhyme label="a" type="f" corresp="#s2:l1">loopen</rhyme>,</l>
        <l id="s2:l4" met="5" type="+-">O die sullen troosten mijn <rhyme label="b" type="m" corresp="#s2:l2">gemoedt</rhyme>!</l>
        <l id="s2:l5" met="3" type="-+">Die sullen my <rhyme label="c" type="f">verquicken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die sullen troosten <rhyme label="d" type="m">my</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Des wil ick my gaen <rhyme label="c" type="f" corresp="#s2:l5">schicken</rhyme>,</l>
        <l id="s2:l8" met="5" type="-+">Mijn Iesu! aen uw' diep-gewonde <rhyme label="d" type="m" corresp="#s2:l6">zy</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Och of ick eens mocht <rhyme label="a" type="f">prouven</rhyme>,</l>
        <l id="s3:l2" met="5" type="+-">Iesu Christe! uwe <rhyme label="b" type="m">soetigheydt</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Ick bidd' u, wilt <rhyme label="a" type="f" corresp="#s3:l1">ontschrouven</rhyme></l>
        <l id="s3:l4" met="5" type="+-">Uwe wonden, daer mijn troost in <rhyme label="b" type="m" corresp="#s3:l2">leydt</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Wilt my daer-in <rhyme label="c" type="f">ontfangen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">O goedertierenst' <rhyme label="d" type="m">Heer</rhyme>!</l>
        <l id="s3:l7" met="3" type="-+">Ick wacht met groot <rhyme label="c" type="f" corresp="#s3:l5">verlangen</rhyme>,</l>
        <l id="s3:l8" met="5" type="-+">O Iesu! doet aen my doch dese <rhyme label="d" type="m" corresp="#s3:l6">eer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O Siel! wilt tot my <rhyme label="a" type="f">komen</rhyme>,</l>
        <l id="s4:l2" met="5" type="+-">Wilt u spoeden, komt doch metter <rhyme label="b" type="m">haest</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Ghy niet behouft te <rhyme label="a" type="f" corresp="#s4:l1">schromen</rhyme>,</l>
        <l id="s4:l4" met="5" type="+-">'t Is niet noodigh dat ghy zijt <rhyme label="b" type="m" corresp="#s4:l2">verbaest</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">En wilt niet meerder <rhyme label="c" type="f">suchten</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Bedwinght u diep <rhyme label="d" type="m">gesteen</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Komt in mijn zijde <rhyme label="c" type="f" corresp="#s4:l5">vluchten</rhyme>,</l>
        <l id="s4:l8" met="5" type="-+">Mijn zijde ick u tot een huys <rhyme label="d" type="m" corresp="#s4:l6">verleen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ick sal uw' sware <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s5:l2" met="5" type="+-">Niet gedachtich zijn, komt binne <rhyme label="b" type="m">gaen</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Ghy sult in mijne <rhyme label="a" type="f" corresp="#s5:l1">wonden</rhyme></l>
        <l id="s5:l4" met="5" type="+-">Troostingh vinden, ghy sult hulp <rhyme label="b" type="m" corresp="#s5:l2">ontfaen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Ick koom, ô Heer der <rhyme label="c" type="f">Heeren</rhyme>!</l>
        <l id="s5:l6" met="3" type="-+">Ick koom, ô grooten <rhyme label="d" type="m">Godt</rhyme>!</l>
        <l id="s5:l7" met="3" type="-+">Die wilt aen my <rhyme label="c" type="f" corresp="#s5:l5">vereeren</rhyme></l>
        <l id="s5:l8" met="5" type="-+">Genade; och ick danck u van dit <rhyme label="d" type="m" corresp="#s5:l6">lot</rhyme>.</l>
      </lg>
    </lg>
  </text>
