  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">O Lieven <rhyme label="a" type="m">Wyn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ghy komt het vier weer <rhyme label="b" type="f">stoken</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Daer vrintschap is <rhyme label="b" type="f" corresp="#s1:l2">ghebroken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ghy doet Grimmers Vrienden <rhyme label="a" type="m" corresp="#s1:l1">zyn</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Den Wyn is goet’ Die liefde <rhyme label="c" type="m">voet</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Den Wyn is <rhyme label="c" type="m" corresp="#s1:l5">goet</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Die 't bloedt <rhyme label="c" type="m" corresp="#s1:l5">versoet</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">En heeft viesen <rhyme label="d" type="m">Dief</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Den Wyn niet <rhyme label="d" type="m" corresp="#s1:l8">lief</rhyme>,</l>
        <l id="s1:l10" met="2" type="+-">Hy <rhyme label="c" type="m" corresp="#s1:l5">mis-doet</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Slaet den Rekel in de <rhyme label="c" type="m" corresp="#s1:l5">boet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Den Wyn die <rhyme label="a" type="m">wordt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Gheperst uyt vele <rhyme label="b" type="f">Druyven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wyn doet veel hact <rhyme label="b" type="f" corresp="#s2:l2">verschuyven</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Alsser iemandt mort en <rhyme label="a" type="m" corresp="#s2:l1">knort</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Veel Druyven <rhyme label="c" type="m">zyn</rhyme></l>
        <l id="s2:l6" met="2" type="-+">In het <rhyme label="c" type="m" corresp="#s2:l5">ghemeyn</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Vereenigt in een Fluyt met <rhyme label="c" type="m" corresp="#s2:l5">Wyn</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Dien <rhyme label="d" type="m">Wyn</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Die doet ons eenigh <rhyme label="d" type="m" corresp="#s2:l8">zyn</rhyme>,</l>
        <l id="s2:l10" met="2" type="+-">En den <rhyme label="c" type="m" corresp="#s2:l5">twist</rhyme></l>
        <l id="s2:l11" met="4" type="+-">Wort door 't Druyven-nat <rhyme label="c" type="m" corresp="#s2:l5">ge</rhyme>[...]</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Hans Moefmans <rhyme label="a" type="m">hadt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met onsen Gys <rhyme label="b" type="f">ghekeven</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En Gys een lap <rhyme label="b" type="f" corresp="#s3:l2">ghegheven</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Gys was daerom gram en <rhyme label="a" type="m" corresp="#s3:l1">prat</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Als Gys heel <rhyme label="c" type="m">gram</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Ter Herbergh <rhyme label="c" type="m" corresp="#s3:l5">quam</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Als hy Hans Moefmans daer <rhyme label="c" type="m" corresp="#s3:l5">vernam</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Broght het een <rhyme label="d" type="m">reys</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Hans Moefmans aen <rhyme label="d" type="m" corresp="#s3:l8">Gys</rhyme>,</l>
        <l id="s3:l10" met="2" type="+-">Hans en <rhyme label="c" type="m" corresp="#s3:l5">Gys</rhyme></l>
        <l id="s3:l11" met="4" type="+-">Droncken met den Wyn den <rhyme label="c" type="m" corresp="#s3:l5">pys</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Wanneêr den <rhyme label="a" type="m">Wyn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ons herssenen en <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En 't hert verwermt van <rhyme label="b" type="f" corresp="#s4:l2">binnen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Sal haest werm de liefde <rhyme label="a" type="m" corresp="#s4:l1">zyn</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Als het werm <rhyme label="c" type="m">bloedt</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Werm liefde <rhyme label="c" type="m" corresp="#s4:l5">voedt</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Vlucht kouden haet uyt het <rhyme label="c" type="m" corresp="#s4:l5">ghemoedt</rhyme>.</l>
        <l id="s4:l8" met="2" type="-+">Drinckt dan <rhyme label="d" type="m">al-te-samen</rhyme></l>
        <l id="s4:l9" met="2" type="-+">Groot en <rhyme label="d" type="m" corresp="#s4:l8">klyn</rhyme></l>
        <l id="s4:l10" met="2" type="+-">Koelen <rhyme label="c" type="m" corresp="#s4:l5">Wyn</rhyme></l>
        <l id="s4:l11" met="4" type="+-">Om in liefde werm te <rhyme label="c" type="m" corresp="#s4:l5">zyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
