    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="amusement">vermaak</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NU heffen wy een nieuw liet <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Uan den Antechrist willen wijt <rhyme label="a" type="m" corresp="#s1:l1">bestaen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">God wil hem <rhyme label="b" type="f">openbaren</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ende met den gheest zijns monts <rhyme label="a" type="m" corresp="#s1:l1">verslaen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Dat wil ick v <rhyme label="b" type="f" corresp="#s1:l3">verclaren</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Opt rechte duyts is synen <rhyme label="a" type="m">naem</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die altijt sal teghen Christum <rhyme label="a" type="m" corresp="#s2:l1">staen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Met leeren ende met <rhyme label="b" type="f">wercken</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dit heeft die Paus so langhe <rhyme label="a" type="m" corresp="#s2:l1">ghedaen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Dat machmen nv wel <rhyme label="b" type="f" corresp="#s2:l3">mercken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Christus ghinck preken alle <rhyme label="a" type="m">daghen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Hy en reet op rossen noch op <rhyme label="a" type="m" corresp="#s3:l1">waghen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Die Paus heeft so heylighe <rhyme label="b" type="f">voeten</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Die aerde is hem niet weerdich te <rhyme label="a" type="m" corresp="#s3:l1">draghen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Alle keysers zijn voeten kussen <rhyme label="b" type="f" corresp="#s3:l3">moeten</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Christus die leefde in groot <rhyme label="a" type="m">verdriet</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Also veel eyghens en hadde hy <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Daer hy zijn hooft op rusten <rhyme label="b" type="f">mochte</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Sint Peter hy selfs visschen <rhyme label="a" type="m" corresp="#s4:l1">hiet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Als hy de zijnspenninck <rhyme label="b" type="f" corresp="#s4:l3">brochte</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hier teghen is de Paus so <rhyme label="a" type="m">rijck</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Ter weerelt vintmen niet zijns <rhyme label="a" type="m" corresp="#s5:l1">gelijck</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Uan steden ende van <rhyme label="b" type="f">sloten</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Die heeft hy ghekreghen met <rhyme label="a" type="m" corresp="#s5:l1">practijck</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Dat heeft God nv eens <rhyme label="b" type="f" corresp="#s5:l3">verdroten</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nv siet aen Christus die Gods <rhyme label="a" type="m">soon</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Hy heeft ghedraghen een doorne <rhyme label="a" type="m" corresp="#s6:l1">kroon</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Men mocht niet by hem <rhyme label="b" type="f">gheraken</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Want op den berch is hy <rhyme label="a" type="m" corresp="#s6:l1">gheuloen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Als men hem koninck wilde <rhyme label="b" type="f" corresp="#s6:l3">maken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hem seluen heeft die Paus <rhyme label="a" type="m">ghestelt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Bouen alle Koninghen met <rhyme label="a" type="m" corresp="#s7:l1">ghewelt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Hy draecht dry croonen van <rhyme label="b" type="f">goude</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Ueel kersten bloets stort hy int <rhyme label="a" type="m" corresp="#s7:l1">velt</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Dit moetmen voor heylicheyt <rhyme label="b" type="f" corresp="#s7:l3">houden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sijn leer ghelt meer dan Gods <rhyme label="a" type="m">gebot</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Met Christus woort houdt hy zijn <rhyme label="a" type="m" corresp="#s8:l1">spot</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Sijn doen is niet dan <rhyme label="b" type="f">lieghen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Sijn iongeren gaen gheschoren ghelijck eenen <rhyme label="a" type="m" corresp="#s8:l1">sot</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Om den armen te <rhyme label="b" type="f" corresp="#s8:l3">bedrieghen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Christus die heeft den doot <rhyme label="a" type="m">ghesmaeckt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Hier wt heeft de Paus een kraem <rhyme label="a" type="m" corresp="#s9:l1">ghemaeckt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">En aflaets brieuen <rhyme label="b" type="f">gheschreuen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Op datter niemant aen en <rhyme label="a" type="m" corresp="#s9:l1">raeckt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Hy moeter veel ghelts om <rhyme label="b" type="f" corresp="#s9:l3">gheuen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Uan die misse maeckt hy een <rhyme label="a" type="m">offerant</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Daer ons salicheyt aen <rhyme label="a" type="m" corresp="#s10:l1">hangt</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Is dat niet seer <rhyme label="b" type="f">gheloghen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Die men doch alleen door Christum <rhyme label="a" type="m" corresp="#s10:l1">ontfanct</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Dus heeft hy ons <rhyme label="b" type="f" corresp="#s10:l3">bedroghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Christus waer noch <rhyme label="a" type="m">vermaledijt</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Hadden hem die missen niet <rhyme label="a" type="m" corresp="#s11:l1">beurijdt</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Als sy haer Canon <rhyme label="b" type="f">lesen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">So bidden sy God den vader <rhyme label="a" type="m" corresp="#s11:l1">altijt</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Synen soon ghenadich te <rhyme label="b" type="f" corresp="#s11:l3">wesen</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Hier wt heeft hy gemaect dat <rhyme label="a" type="m">Uaghevier</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Daerin maect hy de sielen <rhyme label="a" type="m" corresp="#s12:l1">puer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Als men hem ghelt wil toe <rhyme label="b" type="f">dregen</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Dus heeft hy de heele werelt <rhyme label="a" type="m" corresp="#s12:l1">schier</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Met valscheyt in <rhyme label="b" type="f" corresp="#s12:l3">gekreghen</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ia Christum heeft hy nv vast <rhyme label="a" type="m">gheleyt</rhyme></l>
        <l id="s13:l2" met="4" type="-+">In yseren sloten so men <rhyme label="a" type="m" corresp="#s13:l1">seyt</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Als men hem ghelt geeft met <rhyme label="b" type="f">hoopen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Moet Christus altijt zijn <rhyme label="a" type="m" corresp="#s13:l1">bereyt</rhyme></l>
        <l id="s13:l5" met="3" type="-+">De sielen te laten <rhyme label="b" type="f" corresp="#s13:l3">loopen</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hy seyt God heeft ghemaect die oore <rhyme label="a" type="m">biecht</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Daer hy doch valschelick aen <rhyme label="a" type="m" corresp="#s14:l1">liecht</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Hy heeftse self <rhyme label="b" type="f">gheuonden</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Want hy die menschen daer door <rhyme label="a" type="m" corresp="#s14:l1">bedriecht</rhyme></l>
        <l id="s14:l5" met="3" type="-+">En om dat ghelt vergheeft haer <rhyme label="b" type="f" corresp="#s14:l3">sonden</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Sijn boosheyt heeft hy hier door <rhyme label="a" type="m">gewrocht</rhyme></l>
        <l id="s15:l2" met="4" type="-+">En menighe vrouwe ter schanden <rhyme label="a" type="m" corresp="#s15:l1">gebrocht</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Want sy klaghen haer <rhyme label="b" type="f">ghebreken</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Och dochter ick heb my also <rhyme label="a" type="m" corresp="#s15:l1">bedocht</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Ick moet v alleen wat <rhyme label="b" type="f" corresp="#s15:l3">spreken</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Dese sonden acht de Paus so <rhyme label="a" type="m">slecht</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Daerom verbiet hy zijn geschoren <rhyme label="a" type="m" corresp="#s16:l1">decht</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Dit is de mensche der <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Daer sint Pauwels af heeft <rhyme label="a" type="m" corresp="#s16:l1">ghesecht</rhyme></l>
        <l id="s16:l5" met="3" type="-+">Dat wort nv wel <rhyme label="b" type="f" corresp="#s16:l3">beuonden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Dit is den rechten <rhyme label="a" type="m">Antekerst</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Die sweet en bloet den armen wt <rhyme label="a" type="m" corresp="#s17:l1">perst</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Met bannen en met <rhyme label="b" type="f">iaghen</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Nv is hy gheuallen dat hy <rhyme label="a" type="m" corresp="#s17:l1">berst</rhyme></l>
        <l id="s17:l5" met="3" type="-+">God en wil hem niet langher <rhyme label="b" type="f" corresp="#s17:l3">verdraghen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Ick bid v vader <rhyme label="a" type="m">ghebenedijt</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Dat ghy hem doch ghenadich <rhyme label="a" type="m" corresp="#s18:l1">zijt</rhyme></l>
        <l id="s18:l3" met="3" type="-+">En wilt hem gracie <rhyme label="b" type="f">gheue</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Op dat hy zijn sonden eens <rhyme label="a" type="m" corresp="#s18:l1">belijt</rhyme></l>
        <l id="s18:l5" met="3" type="-+">En eewich met v mach <rhyme label="b" type="f" corresp="#s18:l3">leuen</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Die dit liedeken wt liet <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Met lijden was zijn herte <rhyme label="a" type="m" corresp="#s19:l1">beuaen</rhyme></l>
        <l id="s19:l3" met="3" type="-+">Bidt voor hem al <rhyme label="b" type="f">ghelijcke</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Dat hy op Gods woort mach blijuen <rhyme label="a" type="m" corresp="#s19:l1">staen</rhyme></l>
        <l id="s19:l5" met="3" type="-+">En daer af niet en <rhyme label="b" type="f" corresp="#s19:l3">wijcke</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
