  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">Ik bespot myn Fillis uwe <rhyme label="a" type="m">list</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gy hebt uw zelf <rhyme label="a" type="m" corresp="#s1:l1">vergist</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ik ken uw loos <rhyme label="b" type="m">gedrag</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En al uw vais <rhyme label="b" type="m" corresp="#s1:l3">geklach</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Ik stop daar <rhyme label="c" type="m">voor</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Myn hart en oor. Ik <rhyme label="c" type="m" corresp="#s1:l5">bespot</rhyme>.</l>
        <l id="s1:l7" met="5" type="-+">Ik heb al lang genoeg om u <rhyme label="d" type="m">gezucht</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">Want al myn smeeken doet in 't minst geen <rhyme label="d" type="m" corresp="#s1:l7">vrugt</rhyme>,</l>
        <l id="s1:l9" met="5" type="-+">Gy spot met my en met myn'trouwe <rhyme label="e" type="m">min</rhyme>,</l>
        <l id="s1:l10" met="5" type="-+">En dult m' alleen om giften en <rhyme label="e" type="m" corresp="#s1:l9">gewin</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Ik ban u uit myn <rhyme label="e" type="m" corresp="#s1:l9">zin</rhyme>.</l>
      </lg>
    </lg>
