  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MYn Ziel is eenmaal moede <rhyme label="a" type="m">van</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mijn sorgeloose <rhyme label="b" type="f">leeven</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Ik wil voortaan, al wat ik <rhyme label="a" type="m" corresp="#s1:l1">kan</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">De zonde my <rhyme label="b" type="f" corresp="#s1:l2">begeeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De wellust deser weereldt <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Mijn meeste vyand <rhyme label="b" type="f">weesen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ick sal haer soet als bittre <rhyme label="a" type="m" corresp="#s2:l1">gal</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Tot allen tyden <rhyme label="b" type="f" corresp="#s2:l2">vreesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'k Wil my verblyden maer <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wanneer ick om mijn <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Kan zijn bedroeft, so dat ick <rhyme label="a" type="m" corresp="#s3:l1">ween</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En schrey uyt 's herten <rhyme label="b" type="f" corresp="#s3:l2">gronden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O tranen van oprechte <rhyme label="a" type="m">boet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Waer meugt gy doch <rhyme label="b" type="f">vertoeven</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">Al koomt gy met een groote <rhyme label="a" type="m" corresp="#s4:l1">vloet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gy sult my niet <rhyme label="b" type="f" corresp="#s4:l2">bedroeven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O tranen waerde tranen <rhyme label="a" type="m">koomt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Want ick verlang met <rhyme label="b" type="f">smerte</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat gy als water-beken <rhyme label="a" type="m" corresp="#s5:l1">stroomt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Uyt mijn verbruyselt <rhyme label="b" type="f" corresp="#s5:l2">herte</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O heilsaem nat, dat God <rhyme label="a" type="m">vergaert</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Als balssem in sijn <rhyme label="b" type="f">flesschen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Gy kont door uwen wond'ren <rhyme label="a" type="m" corresp="#s6:l1">aert</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Den brandt mijns herten <rhyme label="b" type="f" corresp="#s6:l2">lesschen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Jesu! die selfs hebt <rhyme label="a" type="m">geschreyd</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Tot medelyd' <rhyme label="b" type="f">bewogen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">De tranen der <rhyme label="a" type="m" corresp="#s7:l1">boetveerdigheid</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wilt perssen uyt mijn <rhyme label="b" type="f" corresp="#s7:l2">oogen</rhyme>:</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ick kan doch sonder uw' <rhyme label="a" type="m">gena</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Niet eenen droppel <rhyme label="b" type="f">gieten</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Maer als gy wilt, sy moeten <rhyme label="a" type="m" corresp="#s8:l1">dra</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Als stroomen daer heen <rhyme label="b" type="f" corresp="#s8:l2">vlieten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hoewel dat ick nu niet en <rhyme label="a" type="m">kan</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Uw' voeten nat <rhyme label="b" type="f">beweenen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Soo wijck ick nochtans daer niet <rhyme label="a" type="m" corresp="#s9:l1">van</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Met suchten ende <rhyme label="b" type="f" corresp="#s9:l2">steenen</rhyme>:</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Mijn hert alreed' in tranen <rhyme label="a" type="m">swemt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">O dats' uyt d'oogen <rhyme label="b" type="f">braken</rhyme>!</l>
        <l id="s10:l3" met="4" type="-+">'t En souw soo seer niet zijn <rhyme label="a" type="m" corresp="#s10:l1">beklemt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Maer haest verlichting <rhyme label="b" type="f" corresp="#s10:l2">smaken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O God! gy die den Key-steen <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Een Water-bron <rhyme label="b" type="f">voort-bringen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Die door uw' kragt een <rhyme label="a" type="m" corresp="#s11:l1">Water-vloedt</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Doet uyt den Rots-steen <rhyme label="b" type="f" corresp="#s11:l2">springen</rhyme>;</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Slaet op mijn hert met uwen <rhyme label="a" type="m">Staf</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Op dat mijn oogen <rhyme label="b" type="f">konnen</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Van mijne wangen storten <rhyme label="a" type="m" corresp="#s12:l1">af</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Geheele <rhyme label="b" type="f" corresp="#s12:l2">Water-bronnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
