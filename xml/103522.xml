  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEn ongeveynsden <rhyme label="a" type="m">Coridon</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Sweert noch hy kent geen ander <rhyme label="a" type="m" corresp="#s1:l1">Son</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Des daeghs als <rhyme label="b" type="f">Amarillis</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Des nachts geen Maen als <rhyme label="b" type="f" corresp="#s1:l3">Phillis</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Want ick wensch, hoop en <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Met keurloos <rhyme label="c" type="m" corresp="#s1:l5">onverschil</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Phillis en <rhyme label="c" type="m" corresp="#s1:l5">Amaril</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick ken van spot mijn herte <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s2:l2" met="4" type="-+">En van in schijn <rhyme label="a" type="m" corresp="#s2:l1">lief-kosery</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Al lief' ick <rhyme label="b" type="f">Amarillis</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En myne lieve <rhyme label="b" type="f" corresp="#s2:l3">Phillis</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Want ick wensch, hoop en <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Met keurloos <rhyme label="c" type="m" corresp="#s2:l5">onverschil</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Phillis en <rhyme label="c" type="m" corresp="#s2:l5">Amaril</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het geene dat myn Herte <rhyme label="a" type="m">peynst</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Spreeckt myne tongh gantsch <rhyme label="a" type="m" corresp="#s3:l1">ongeveinst</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Des Daegs by <rhyme label="b" type="f">Amarillis</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En oock des Nachts by <rhyme label="b" type="f" corresp="#s3:l3">Phillis</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Want ick wensch, hoop en <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met keurloos <rhyme label="c" type="m" corresp="#s3:l5">onverschil</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Phillis en <rhyme label="c" type="m" corresp="#s3:l5">Amaril</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Het is gansch niet om Phillis <rhyme label="a" type="m">wil</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Dat ick des daeghs vry <rhyme label="a" type="m" corresp="#s4:l1">Amaril</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Noch oock om <rhyme label="b" type="f">Amarillis</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat ick des nachts vry <rhyme label="b" type="f" corresp="#s4:l3">Phillis</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Want ick wensch, hoop en <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Met keurloos <rhyme label="c" type="m" corresp="#s4:l5">onverschil</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Phillis en <rhyme label="c" type="m" corresp="#s4:l5">Amaril</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wilt gy dat ick maer eens <rhyme label="a" type="m">vier</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Verbiet u oogh haer lief <rhyme label="a" type="m" corresp="#s5:l1">geswier</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Aenlockend <rhyme label="b" type="f">Amarillis</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Of gy bekoorter <rhyme label="b" type="f" corresp="#s5:l3">Phillis</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Want ick wensch, hoop en <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Met keurloos <rhyme label="c" type="m" corresp="#s5:l5">onverschil</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Phillis en <rhyme label="c" type="m" corresp="#s5:l5">Amaril</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Neen: die mee wil dat blyde <rhyme label="a" type="m">nae</rhyme></l>
        <l id="s6:l2" met="4" type="-+">mijn dobbel-min seg eerste <rhyme label="a" type="m" corresp="#s6:l1">jae</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wilt gy my <rhyme label="b" type="f">Amarillis</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Of wel wilt gy my <rhyme label="b" type="f" corresp="#s6:l3">Phillis</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Gy dat ick niet meer <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Met keurloos <rhyme label="c" type="m" corresp="#s6:l5">onverschil</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Phillis en <rhyme label="c" type="m" corresp="#s6:l5">Amarillis</rhyme></l>
      </lg>
    </lg>
  </text>
