  <author>Wolterus ter Burgh</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ontwaekt myn Ziel om Godt te <rhyme label="a" type="f">prysen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Doet u Gebedt ten Hemel <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Laet ’s Werelds sorge buyten <rhyme label="b" type="m" corresp="#s1:l2">staen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat ’t dankbaer hert in eer <rhyme label="a" type="f" corresp="#s1:l1">bewysen</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Vroeg tot Godt <rhyme label="a" type="f" corresp="#s1:l1">rysen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Ziel! om op den Heer te <rhyme label="a" type="f">wachten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ten dienste van zyn <rhyme label="b" type="m">Majesteyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Zyt ’s morgens met den dagh <rhyme label="b" type="m" corresp="#s2:l2">bereyt</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Geeft hem de eerste <rhyme label="a" type="f" corresp="#s2:l1">ziels-gedachten</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Met alle <rhyme label="a" type="f" corresp="#s2:l1">krachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ik dancke uw’ genadigh <rhyme label="a" type="f">Vader</rhyme>!</l>
        <l id="s3:l2" met="4" type="-+">Dat gy soo trouwelyk de <rhyme label="b" type="m">wacht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hield’ over my in dese <rhyme label="b" type="m" corresp="#s3:l2">nacht</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Uw’ goetheydt komt ons by, en <rhyme label="a" type="f" corresp="#s3:l1">nader</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">O Heyls <rhyme label="a" type="f" corresp="#s3:l1">sprink-ader</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Voor ongeluk en <rhyme label="a" type="f">tegenheden</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hebt gy my goediglyk <rhyme label="b" type="m">bewaert</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Uw’ gunst van nieuw <rhyme label="b" type="m" corresp="#s4:l2">geopenbaert</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Ik sal nu voor u aensicht <rhyme label="a" type="f" corresp="#s4:l1">treden</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Me myn <rhyme label="a" type="f" corresp="#s4:l1">gebeden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doet voorts, ô Vader van de <rhyme label="a" type="f">Lichten</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">U goetheyt rysen met den <rhyme label="b" type="m">dag</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">U zegen dale alsse <rhyme label="b" type="m" corresp="#s5:l2">plagh</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Dat my u vriend’lyk <rhyme label="a" type="f" corresp="#s5:l1">aengesichte</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Altoos <rhyme label="a" type="f" corresp="#s5:l1">verlichte</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O Sonne der <rhyme label="a" type="f">gerechtigheden</rhyme>!</l>
        <l id="s6:l2" met="4" type="-+">O Morgen-ster! geeft dat u <rhyme label="b" type="m">strael</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">In myn seer duyster herte <rhyme label="b" type="m" corresp="#s6:l2">dael</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat ik O Iesus! volg’ uw’ <rhyme label="a" type="f" corresp="#s6:l1">treden</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">En heyl’ge <rhyme label="a" type="f" corresp="#s6:l1">zeden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als uwe Geest, myn geest sal <rhyme label="a" type="f">werken</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dan ben ik tot den dienst <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Van u O Heer! my <rhyme label="b" type="m" corresp="#s7:l2">opgeleyt</rhyme>;</l>
        <l id="s7:l4" met="4" type="-+">Doet myn werk tot u Eere <rhyme label="a" type="f" corresp="#s7:l1">strecken</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">‘k Wacht na u <rhyme label="a" type="f" corresp="#s7:l1">trecken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dus opgewekt, ben ik <rhyme label="a" type="f">genegen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">In alle dingh voor u <rhyme label="b" type="m">oprecht</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Te wand’len als een trouwe <rhyme label="b" type="m" corresp="#s8:l2">knecht</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ik wachte voorts in myne <rhyme label="a" type="f" corresp="#s8:l1">wegen</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Op uwen <rhyme label="a" type="f" corresp="#s8:l1">zegen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Behoed my dat ik niet <rhyme label="a" type="f">verdwale</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Van u, tot sond’, of <rhyme label="b" type="m">ydelheyt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Den vyand die zyn stricken <rhyme label="b" type="m" corresp="#s9:l2">leyt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Om myne ziel ten buyt te <rhyme label="a" type="f" corresp="#s9:l1">halen</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Heer! set hem <rhyme label="a" type="f" corresp="#s9:l1">palen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">‘k Beveele my in uwe <rhyme label="a" type="f">hoede</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Met Lichaem, Geest, en al het <rhyme label="b" type="m">myn</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Wilt eeuwigh myn bewaerder <rhyme label="b" type="m" corresp="#s10:l2">zyn</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Stuurt alle voor en <rhyme label="a" type="f" corresp="#s10:l1">tegenspoeden</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">My doch ten <rhyme label="a" type="f" corresp="#s10:l1">goede</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
