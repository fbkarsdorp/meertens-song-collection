    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">Geestelijk lied</tag>
    </tags>
    <melody>Te Brunswijk staat een stenen huis</melody>
    <categories/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heer aensiet al mijn lijden <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Gheeft my nu sterckheydt in desen <rhyme label="a" type="m" corresp="#s1:l1">noot</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op dat ick niet en <rhyme label="b" type="f">beswijcke</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Maeckt my volstandigh tot in der <rhyme label="a" type="m" corresp="#s1:l1">doodt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dat ick van u waerheydt niet en <rhyme label="b" type="f" corresp="#s1:l3">wijcke</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Godt sterckt mijn betrouwen <rhyme label="a" type="m">kleyn</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Maeckt my van alle mijn sonden <rhyme label="a" type="m" corresp="#s2:l1">reyn</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Wilt mijn gheloove <rhyme label="b" type="f">vermeeren</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Van u komt al mijn hulpe <rhyme label="a" type="m" corresp="#s2:l1">ghemeyn</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">O Almachtigh Heere der <rhyme label="b" type="f" corresp="#s2:l3">Heeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vader vergheeft alle mijn <rhyme label="a" type="m">schult</rhyme>.</l>
        <l id="s3:l2" met="4" type="-+">Ick weet dat ghy my niet verlaten <rhyme label="a" type="m" corresp="#s3:l1">sult</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Maeckt my doch los van mijne <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ghy hebt my met uwen Gheest <rhyme label="a" type="m" corresp="#s3:l1">vervult</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Wie kan uwe goedtheyt <rhyme label="b" type="f" corresp="#s3:l3">door-gronden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Heer van u komt mijn <rhyme label="a" type="m">saligheyt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Wilt my verlossen niet langhe en <rhyme label="a" type="m" corresp="#s4:l1">beyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Mijn sterckte, mijn steen <rhyme label="b" type="f">verheven</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Mijn toevlucht heb ick op u <rhyme label="a" type="m" corresp="#s4:l1">gheleyt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ghy sult my nimmermeer <rhyme label="b" type="f" corresp="#s4:l3">begheven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Godt mijn ziel is in my <rhyme label="a" type="m">bedroeft</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">V Goddelijcke hulpe sy <rhyme label="a" type="m" corresp="#s5:l1">behoeft</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Mijn steen waerom hebdy my <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Helpt my o Heer niet en <rhyme label="a" type="m" corresp="#s5:l1">vertoeft</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Want vele zijnder die my <rhyme label="b" type="f" corresp="#s5:l3">haten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wat bedroeft ghy u o ziele <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Waerom wilt ghy soo treurigh <rhyme label="a" type="m" corresp="#s6:l1">zijn</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">Stelt u betrouwen op den <rhyme label="b" type="f">Heere</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Ghy sult noch aenschouwen sijn klaer <rhyme label="a" type="m" corresp="#s6:l1">aenschijn</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Druck sal u in blyschap <rhyme label="b" type="f" corresp="#s6:l3">verkeeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ghy gheloovighe weest nu <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Al ist dat ghy kleyn van ghetale <rhyme label="a" type="m" corresp="#s7:l1">zijt</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Wie kan u deeren of <rhyme label="b" type="f">letten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Is dat de Heere voor ons <rhyme label="a" type="m" corresp="#s7:l1">strijdt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Wie sal hem teghen ons dan <rhyme label="b" type="f" corresp="#s7:l3">setten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die Heere is stercker dan Casteel of <rhyme label="a" type="m">slot</rhyme>.</l>
        <l id="s8:l2" met="4" type="-+">O Heer weest my een beschermende <rhyme label="a" type="m" corresp="#s8:l1">Godt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Tegen al mijn boose <rhyme label="b" type="f">vyanden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ghy zijt, o Heer, mijn deel en <rhyme label="a" type="m" corresp="#s8:l1">lot</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Verlost my van der Leeuwen <rhyme label="b" type="f" corresp="#s8:l3">tanden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O Heere machtigh in den <rhyme label="a" type="m">strijt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">O Hooftman Israels die ons <rhyme label="a" type="m" corresp="#s9:l1">bevrijt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">O Godt nae u heb ick <rhyme label="b" type="f">verlanghen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">V Dienaer die hier vervolginghe <rhyme label="a" type="m" corresp="#s9:l1">lijdt</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Wilt hem doch in u rijck <rhyme label="b" type="f" corresp="#s9:l3">ontfanghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
