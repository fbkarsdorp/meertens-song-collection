    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Is dan de Liefde <rhyme label="a" type="f">schande</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Is ‘t schande dat men <rhyme label="b" type="m">Vryt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Zoo is ‘er in de <rhyme label="a" type="f" corresp="#s1:l1">Lande</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Niemant van schand <rhyme label="b" type="m" corresp="#s1:l2">bevrydt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">De Nyd   noemt Liefde <rhyme label="a" type="f" corresp="#s1:l1">schande</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">De Nyd noemt Liefde <rhyme label="a" type="f" corresp="#s1:l1">schande</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Om dat zy ‘er tegen <rhyme label="b" type="m" corresp="#s1:l2">stryt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Of is de Liefde <rhyme label="a" type="f">Zonden</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">‘k Bid om <rhyme label="b" type="m">vergiffenis</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Daar word geen mens <rhyme label="a" type="f" corresp="#s2:l1">gevonden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die Zonder Liefde <rhyme label="b" type="m" corresp="#s2:l2">is</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">‘t Is een Onnosele   <rhyme label="a" type="f" corresp="#s2:l1">Zonde</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">‘t Is een Onnosele <rhyme label="a" type="f" corresp="#s2:l1">Zonde</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die Ligt Vergeven <rhyme label="b" type="m" corresp="#s2:l2">is</rhyme>.</l>
      </lg>
