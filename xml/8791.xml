    <melody>Ach Gott vom Himmel</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEEr wie sal woonen in dijn' <rhyme label="a" type="m">Tent</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Daer ghy gaet Weldaet <rhyme label="b" type="f">thoonen</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Wie sal op dijnen Berghe <rhyme label="a" type="m" corresp="#s1:l1">jent</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Godtsalich blyven <rhyme label="b" type="f" corresp="#s1:l2">woonen</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">Die sonder Vlech syn Leven <rhyme label="c" type="m">leydt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Die Recht doet en die Waerheyt <rhyme label="c" type="m" corresp="#s1:l5">seyt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Van herten sonder <rhyme label="d" type="f">Foute</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die gheene valsche Tongh' en <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Tot s'Naesten schand' oft <rhyme label="b" type="f">smade</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Niet achterclapt, noch hem <rhyme label="a" type="m" corresp="#s2:l1">begheeft</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om leedt te doen oft <rhyme label="b" type="f" corresp="#s2:l2">schade</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die den Godloosen niet en <rhyme label="c" type="m">acht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Maer eert den Vromen, die <rhyme label="c" type="m" corresp="#s2:l5">betracht</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Godts vreese vroech en <rhyme label="d" type="f">spade</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die synen Naesten trouw' <rhyme label="a" type="m">hanteert</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hem niet bedriecht met <rhyme label="b" type="f">sweeren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Gheen woecker van syn ghelt <rhyme label="a" type="m" corresp="#s3:l1">begheert</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Noch hem die Handt laet <rhyme label="b" type="f" corresp="#s3:l2">smeeren</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Wie oprecht sulcks al houden <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Sal blijven in des HEEren <rhyme label="c" type="m" corresp="#s3:l5">Hoedt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">End' Eewichlijck wel <rhyme label="d" type="f">varen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
