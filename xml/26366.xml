  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs men aen 't reyn <rhyme label="a" type="f">eersame</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Lichame, Christi <rhyme label="b" type="m">net</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wil wesen ten <rhyme label="a" type="f" corresp="#s1:l1">betaeme</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Een aenghename <rhyme label="b" type="m" corresp="#s1:l2">ledt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Het is al eerst van <rhyme label="c" type="f">noode</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Van doode wercken men <rhyme label="d" type="m">moet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Doen boet, dan van den <rhyme label="c" type="f" corresp="#s1:l5">broode</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Crijght men een smake <rhyme label="d" type="m" corresp="#s1:l6">goet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Gods woort seer goet van <rhyme label="a" type="f">smaken</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Can maken fraey <rhyme label="b" type="m">ghesont</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Ziel in alle <rhyme label="a" type="f" corresp="#s2:l1">saken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De spraken, uyt Gods <rhyme label="b" type="m" corresp="#s2:l2">mont</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En condt, ghy niet <rhyme label="c" type="f">verwerven</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sterven, de sonde <rhyme label="d" type="m">vry</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Moet ghy, u lusten <rhyme label="c" type="f" corresp="#s2:l5">derven</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Doen dat Gods wille <rhyme label="d" type="m" corresp="#s2:l6">sy</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Godt wil dat elck hem <rhyme label="a" type="f">wende</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Wt blende, weghen <rhyme label="b" type="m">glat</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Op dat elck met <rhyme label="a" type="f" corresp="#s3:l1">amende</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Kende de waerheyt <rhyme label="b" type="m" corresp="#s3:l2">plat</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En dat, elck <rhyme label="c" type="f">gheneralich</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Salich, soude sijn, <rhyme label="d" type="m">want</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Hy sandt, ons <rhyme label="c" type="f" corresp="#s3:l5">principalich</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Daerom zijn liefste <rhyme label="d" type="m" corresp="#s3:l6">pandt</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">T' lief pandt zynen Soon <rhyme label="a" type="f">eenich</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">In 't weenich, dal hier <rhyme label="b" type="m">quam</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Als een dienstknecht <rhyme label="a" type="f" corresp="#s4:l1">vercleenich</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dit reenich, suyver <rhyme label="b" type="m" corresp="#s4:l2">Lam</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat nam, swerelts <rhyme label="c" type="f">misdaden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Gheladen, op hem <rhyme label="d" type="m">ghetast</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Gheen last, en mach ons <rhyme label="c" type="f" corresp="#s4:l5">schaden</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Ghelooven wy hen <rhyme label="d" type="m" corresp="#s4:l6">vast</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">In t' gheloove <rhyme label="a" type="f">verstyven</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Beclyven, moet men <rhyme label="b" type="m">eest</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">In Christus woorden <rhyme label="a" type="f" corresp="#s5:l1">blyven</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dryven, sal dan Gods <rhyme label="b" type="m" corresp="#s5:l2">Gheest</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Maer waer men vreest, t' <rhyme label="c" type="f">verenschen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Den Menschen, <rhyme label="d" type="m">wanckelbaer</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Volcomen naer Gods <rhyme label="c" type="f" corresp="#s5:l5">wenschen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En is gheen liefde <rhyme label="d" type="m" corresp="#s5:l6">daer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer daer de liefde <rhyme label="a" type="f">opspruyten</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Met haer virtuyten // <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Daer moet de vreese <rhyme label="a" type="f" corresp="#s6:l1">buyten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Besluyten wat Godt <rhyme label="b" type="m" corresp="#s6:l2">beval</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Can liefde al te <rhyme label="c" type="f">gader</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Den Vader, de liefde <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Door Christum ons <rhyme label="c" type="f" corresp="#s6:l5">ontlader</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Gheopenbaert <rhyme label="d" type="m" corresp="#s6:l6">ghewis</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De liefde is wel te <rhyme label="a" type="f">prysen</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Bewysen moet men <rhyme label="b" type="m">haer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Met werck in <rhyme label="a" type="f" corresp="#s7:l1">verjolysen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Doen rysen, vierich <rhyme label="b" type="m" corresp="#s7:l2">claer</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Maer, die de liefde <rhyme label="c" type="f">falen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Die dwalen, <rhyme label="d" type="m">onghestilt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Godt wilt, dat wy <rhyme label="c" type="f" corresp="#s7:l5">betalen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Zijn groote liefde <rhyme label="d" type="m" corresp="#s7:l6">milt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Liefde moet men <rhyme label="a" type="f">besteden</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">In vreden soo't <rhyme label="b" type="m">behoort</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Aen Gods ghehoorsame <rhyme label="a" type="f" corresp="#s8:l1">leden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die treden, na zijn <rhyme label="b" type="m" corresp="#s8:l2">woort</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En voort, aen <rhyme label="c" type="f">yeghelijcken</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Dat blijcken, mach daer <rhyme label="d" type="m">by</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Dat wy, sonder <rhyme label="c" type="f" corresp="#s8:l5">afwijcken</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Sijn Broederen <rhyme label="d" type="m" corresp="#s8:l6">Christi</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Christen Broeders wilt <rhyme label="a" type="f">bouwen</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">Deur s' Gheests bedouwen, <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Werpt niet wech u <rhyme label="a" type="f" corresp="#s9:l1">betrouwen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Aenschouwen, wilt den <rhyme label="b" type="m" corresp="#s9:l2">loon</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">De Croon, wert u <rhyme label="c" type="f">ghegheven</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Becleven sal Godts <rhyme label="d" type="m">Knecht</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Den rechtveerdighen <rhyme label="c" type="f" corresp="#s9:l5">leven</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Zijns gheloofs, so Schrift <rhyme label="d" type="m" corresp="#s9:l6">seght</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">De Schrift seght <rhyme label="a" type="f">goederhandich</rhyme>,</l>
        <l id="s10:l2" met="3" type="+-">So wie vaillandich <rhyme label="b" type="m">hier</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Blijft tot den eynd' <rhyme label="a" type="f" corresp="#s10:l1">volstandich</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Brandich, in liefden <rhyme label="b" type="m" corresp="#s10:l2">vyer</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Sal schier, ghegeven <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">T' ghepresen, salich <rhyme label="d" type="m">lot</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Voor t' slot vrienden midts <rhyme label="c" type="f" corresp="#s10:l5">desen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Blijft al bevolen <rhyme label="d" type="m" corresp="#s10:l6">Godt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
