    <melody>Gij mannen van verstand</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Thyris gheheele <rhyme label="a" type="f">nachten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Deed' weenende syn <rhyme label="a" type="f" corresp="#s1:l1">klachten</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Over syn <rhyme label="b" type="m">Galathé</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Als dat sy lest <rhyme label="c" type="f">gheleden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soo trotsigh teghen <rhyme label="b" type="m" corresp="#s1:l3">stré</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Syn suchtjens en <rhyme label="c" type="f" corresp="#s1:l4">ghebeden</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy vloeckt haer wreede <rhyme label="a" type="f">daeden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hoe hy sonder <rhyme label="a" type="f" corresp="#s2:l1">ghenaden</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Kan eenen Minnaer <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Voor haer hem <rhyme label="c" type="f">neder-booghen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Met syn ghevouwde <rhyme label="b" type="m" corresp="#s2:l3">knien</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En nat betraende <rhyme label="c" type="f" corresp="#s2:l4">ooghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Daer hy dickwils voor <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Oprecht haer heeft <rhyme label="a" type="f" corresp="#s3:l1">bewesen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De gunst die hy haer <rhyme label="b" type="m">draeght</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Waer teghen sy wilt <rhyme label="c" type="f">thoonen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat syn dienst haer <rhyme label="b" type="m" corresp="#s3:l3">mishaeght</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En min met spyt wilt <rhyme label="c" type="f" corresp="#s3:l4">loonen</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Nochtans is syn <rhyme label="a" type="f">betrouwen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat sonder op te <rhyme label="a" type="f" corresp="#s4:l1">houwen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hy noch verwinnen <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Want al haer <rhyme label="c" type="f">teghen-streyden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat dient in dit <rhyme label="b" type="m" corresp="#s4:l3">gheval</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Maer om de min te <rhyme label="c" type="f" corresp="#s4:l4">leyden</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Verandert dan door <rhyme label="a" type="f">'tminnen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Gingh hy weder <rhyme label="a" type="f" corresp="#s5:l1">beghinnen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ontfanght my weerde <rhyme label="b" type="m">dier</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">ontfangt die soo veel <rhyme label="c" type="f">dagen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Ghebrandt heeft in het <rhyme label="b" type="m" corresp="#s5:l3">vier</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Van min tot u <rhyme label="c" type="f" corresp="#s5:l4">mishaeghen</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wilt van ghemoet <rhyme label="a" type="f">verkeeren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die minne treken <rhyme label="a" type="f" corresp="#s6:l1">leeren</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">My maer stant-vast te <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">'kBetrouw dat ick sal <rhyme label="c" type="f">kryghen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ghenesingh van myn <rhyme label="b" type="m" corresp="#s6:l3">pyn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En ghy 'tghemoet sult <rhyme label="c" type="f" corresp="#s6:l4">nyghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
