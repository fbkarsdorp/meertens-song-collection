<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24512</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>Het is al verkeerd dat placht te zijn</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Och waer ic in myns <rhyme label="a" type="m">vaderlant</rhyme></l>
        <l id="s1:l2" met="3" type="-+">soe en drufte  ic niet meer <rhyme label="b" type="f">trueren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">den engen wech heb ic <rhyme label="c" type="m">bestaen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">hi wort my dickewyle <rhyme label="b" type="f" corresp="#s1:l2">suere</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den engen wech die moet ick <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">ende ic moet ommer <rhyme label="b" type="f">steruen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">genoechte solaes ende alle <rhyme label="c" type="m">vroude</rhyme></l>
        <l id="s2:l4" met="3" type="-+">die moet ic leren <rhyme label="b" type="f" corresp="#s2:l2">deruen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick heb soe lange genoechte <rhyme label="a" type="m">gesocht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">in mynnen der <rhyme label="b" type="f">creatueren</rhyme></l>
        <l id="s3:l3" met="4" type="-+">dat heb ic alsoe duer <rhyme label="c" type="m">becost</rhyme></l>
        <l id="s3:l4" met="3" type="-+">hoer vroude en mach niet <rhyme label="b" type="f" corresp="#s3:l2">dueren</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy moeten al gelaten <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">mit herten ende oec mit <rhyme label="b" type="f">synnen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">soe blyuestu vry ende <rhyme label="c" type="m">ongeuaen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">van hoere valscher <rhyme label="b" type="f" corresp="#s4:l2">mynnen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O lieflic lief een heymelic <rhyme label="a" type="m">troest</rhyme></l>
        <l id="s5:l2" met="3" type="-+">ic wil my tot v <rhyme label="b" type="f">voegen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">ende mynnen onbekant te <rhyme label="c" type="m">syn</rhyme></l>
        <l id="s5:l4" met="3" type="-+">in di is myn <rhyme label="b" type="f" corresp="#s5:l2">vernoegen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Och enich een ende anders  <rhyme label="a" type="m">geen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">wanneer wildi mi <rhyme label="b" type="f">troesten</rhyme></l>
        <l id="s6:l3" met="4" type="-+">ic doge soe mennich hertsen <rhyme label="c" type="m">wee</rhyme></l>
        <l id="s6:l4" met="3" type="-+">och woldy my <rhyme label="b" type="f" corresp="#s6:l2">verloesen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och edelle ziele verweende <rhyme label="a" type="m">bruyt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">laet staen v wenlicke <rhyme label="b" type="f">trueren</rhyme></l>
        <l id="s7:l3" met="4" type="-+">den ewigen troest is v <rhyme label="c" type="m">belauet</rhyme></l>
        <l id="s7:l4" met="3" type="-+">hi comt in corter <rhyme label="b" type="f" corresp="#s7:l2">vren</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och hertse vry hoe wal is <rhyme label="a" type="m">di</rhyme></l>
        <l id="s8:l2" met="3" type="-+">condyt te rechte <rhyme label="b" type="f">besynnen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">lief ende leyt getroest te <rhyme label="c" type="m">syn</rhyme></l>
        <l id="s8:l4" met="3" type="-+">ende god alleen te <rhyme label="b" type="f" corresp="#s8:l2">mynnen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Der mynnen quael is wee ende <rhyme label="a" type="m">wal</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Och mocht ic hem <rhyme label="b" type="f">beschouwen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">ic worde gesont in corter <rhyme label="c" type="m">stont</rhyme></l>
        <l id="s9:l4" met="3" type="-+">in hem is myn <rhyme label="b" type="f" corresp="#s9:l2">verurouwen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Jherusalem myns <rhyme label="a" type="m">vaderlant</rhyme></l>
        <l id="s10:l2" met="3" type="-+">nae di verlanget my <rhyme label="b" type="f">seere</rhyme></l>
        <l id="s10:l3" met="4" type="-+">hier is soe mennyge <rhyme label="c" type="m">bitterheit</rhyme></l>
        <l id="s10:l4" met="3" type="-+">dat  doet my dins <rhyme label="b" type="f" corresp="#s10:l2">begeren</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Daer is soe groten loen <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">nae desen corten <rhyme label="b" type="f">arbeyt</rhyme></l>
        <l id="s11:l3" met="4" type="-+">een blyde gesicht een claer <rhyme label="c" type="m">aenschyn</rhyme></l>
        <l id="s11:l4" met="3" type="-+">wat mach den saligen sueter <rhyme label="b" type="f" corresp="#s11:l2">syn</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Die borgers syn soe seer <rhyme label="a" type="m">verblyt</rhyme></l>
        <l id="s12:l2" met="3" type="-+">van buten ende oec van <rhyme label="b" type="f">bynnen</rhyme></l>
        <l id="s12:l3" met="4" type="-+">sy dryncken wtter mynnen <rhyme label="c" type="m">vloet</rhyme></l>
        <l id="s12:l4" met="3" type="-+">sy moegen wal vrolic <rhyme label="b" type="f" corresp="#s12:l2">syngen</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Sy lauen alle <rhyme label="a" type="m">suetelic</rhyme></l>
        <l id="s13:l2" met="3" type="-+">ten is niet wt te <rhyme label="b" type="f">spreken</rhyme></l>
        <l id="s13:l3" met="4" type="-+">oer blyscap is soe <rhyme label="c" type="m">mennichuolt</rhyme></l>
        <l id="s13:l4" met="3" type="-+">den rouwe is al <rhyme label="b" type="f" corresp="#s13:l2">vergeten</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
