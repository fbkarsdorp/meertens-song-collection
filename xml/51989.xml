<song>
  <meta>
    <id>51989</id>
    <date>
      <year-start>1810</year-start>
      <year-end>1810</year-end>
    </date>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody/>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Joseph Sadones</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAt braef Schepzel is een <rhyme label="a" type="m">Boer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">als hy mensch komt <rhyme label="b" type="f">wezen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">hy mag zeker op zyn <rhyme label="a" type="m" corresp="#s1:l1">toer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">wel worden <rhyme label="b" type="f" corresp="#s1:l2">geprezen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">den Boer die was den eersten <rhyme label="c" type="m">mensch</rhyme></l>
        <l id="s1:l6" met="3" type="-+">die van God is <rhyme label="d" type="f">geschaepen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">hy mogt in't Paradys na <rhyme label="c" type="m" corresp="#s1:l5">wensch</rhyme></l>
        <l id="s1:l8" met="3" type="-+">wel zyn voedzel <rhyme label="d" type="f" corresp="#s1:l6">raepen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Noyt Keyzer, Koning, Prins of <rhyme label="a" type="m">Graef</rhyme></l>
        <l id="s2:l2" met="3" type="-+">mogt 't Par'dys <rhyme label="b" type="f">aenschouwen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">den Boer om dat hy was zoo <rhyme label="a" type="m" corresp="#s2:l1">braef</rhyme></l>
        <l id="s2:l4" met="3" type="-+">kreeg van God d'eerste <rhyme label="b" type="f" corresp="#s2:l2">vrouwe</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">den Boer schoon by vele <rhyme label="c" type="m">veragt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">die is van ons te <rhyme label="d" type="f">gaeder</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">immers van alle <rhyme label="c" type="m" corresp="#s2:l5">geslagt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">is den Boer den <rhyme label="d" type="f" corresp="#s2:l6">vader</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'t Is den Boer door zyn <rhyme label="a" type="m">verstand</rhyme></l>
        <l id="s3:l2" met="3" type="-+">die voor den mensch komt <rhyme label="b" type="f">zorgen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">'t is hy die cultiveert het <rhyme label="a" type="m" corresp="#s3:l1">land</rhyme></l>
        <l id="s3:l4" met="3" type="-+">van avond tot den <rhyme label="b" type="f" corresp="#s3:l2">morgen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">dat 'er geenen Boer en <rhyme label="c" type="m">was</rhyme></l>
        <l id="s3:l6" met="3" type="-+">niemant en konde <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Terwe, Rogge, Pataters, <rhyme label="c" type="m" corresp="#s3:l5">vlasch</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">kweekt den Boer <rhyme label="d" type="f" corresp="#s3:l6">verheven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Schipper heeft den Boer van <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">om op zee te <rhyme label="b" type="f">vaeren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">de zeylen die het schip <rhyme label="a" type="m" corresp="#s4:l1">behoên</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">kwam van 't vlasch en <rhyme label="b" type="f" corresp="#s4:l2">gaeren</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">dat den Boer door zyn <rhyme label="c" type="m">verstand</rhyme></l>
        <l id="s4:l6" met="3" type="-+">gekweekt heeft door Gods <rhyme label="d" type="f">zegen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">vivat de Boeren van ons <rhyme label="c" type="m" corresp="#s4:l5">land</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">ik ben voor hun <rhyme label="d" type="f" corresp="#s4:l6">genegen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Zonder den Boer Brussel en <rhyme label="a" type="m">Gend</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">zoo wel Brugg' als <rhyme label="b" type="f">Oostende</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">met al de Steden die men <rhyme label="a" type="m" corresp="#s5:l1">kent</rhyme></l>
        <l id="s5:l4" met="3" type="-+">kwaemen in <rhyme label="b" type="f" corresp="#s5:l2">elende</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">zoo den Boer Boter nog <rhyme label="c" type="m">Graen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">niet naer de merkt kwam <rhyme label="d" type="f">bringen</rhyme></l>
        <l id="s5:l7" met="4" type="-+">de Burgery die moest <rhyme label="c" type="m" corresp="#s5:l5">vergaen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">den Boer kan alles <rhyme label="d" type="f" corresp="#s5:l6">dwingen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den Boer heeft een goed <rhyme label="a" type="m">gedagt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">hy spaert veel aen <rhyme label="b" type="f">kleeren</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">hy gaet net en zonder <rhyme label="a" type="m" corresp="#s6:l1">pracht</rhyme></l>
        <l id="s6:l4" met="3" type="-+">men kan aen hem <rhyme label="b" type="f" corresp="#s6:l2">leeren</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">den Boer die troetelt zyn <rhyme label="c" type="m">Wyf</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">en is met een te <rhyme label="d" type="f">vrede</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">maer in de stad wat slegt <rhyme label="c" type="m" corresp="#s6:l5">bedryf</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">een ander deelt'er <rhyme label="d" type="f" corresp="#s6:l6">mede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den Boer werkt neêrstig op 't <rhyme label="a" type="m">veld</rhyme></l>
        <l id="s7:l2" met="3" type="-+">met 't krieken van de <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">van zyn vrugten komt veel <rhyme label="a" type="m" corresp="#s7:l1">geld</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">die hy ter merkt komt <rhyme label="b" type="f" corresp="#s7:l2">draegen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">de Boerinne melkt met <rhyme label="c" type="m">plaisier</rhyme></l>
        <l id="s7:l6" met="3" type="-+">gansch neirstig ook haer <rhyme label="d" type="f">Koyen</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">en zy verkoopt haer Boter <rhyme label="c" type="m" corresp="#s7:l5">dier</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">dit doet baer borze <rhyme label="d" type="f" corresp="#s7:l6">groeyen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De braeve Boeren zyn de <rhyme label="a" type="m">vaer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">want zy de Burgers <rhyme label="b" type="f">spyzen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">een braeven Boer moet men <rhyme label="a" type="m" corresp="#s8:l1">voorwaer</rhyme></l>
        <l id="s8:l4" met="3" type="-+">groote eer <rhyme label="b" type="f" corresp="#s8:l2">bewyzen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">de Boeren op hun <rhyme label="c" type="m">Kermis-Feest</rhyme></l>
        <l id="s8:l6" met="3" type="-+">die dansen met geheel <rhyme label="d" type="f">hoopen</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Sadones pryst de Boeren <rhyme label="c" type="m" corresp="#s8:l5">meest</rhyme></l>
        <l id="s8:l8" met="3" type="-+">die van hem Liedjens <rhyme label="d" type="f" corresp="#s8:l6">koopen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
