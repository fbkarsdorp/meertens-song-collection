  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Een Jongman die ‘t <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Eerst komt te <rhyme label="a" type="f" corresp="#s1:l1">beginnen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe quelt hy, hoe quelt hy sijn <rhyme label="a" type="f" corresp="#s1:l1">sinnen</rhyme>!</l>
        <l id="s1:l4" met="2" type="-+">By dagen en <rhyme label="b" type="f">nagten</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Soeckt hy maar te <rhyme label="b" type="f" corresp="#s1:l4">tragten</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Na minne, na minne <rhyme label="b" type="f" corresp="#s1:l4">gedagten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat doet hy al <rhyme label="a" type="f">sugten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Zijn hertjen <rhyme label="a" type="f" corresp="#s2:l1">ontvlugten</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Men acht het, men acht het maer <rhyme label="a" type="f" corresp="#s2:l1">klugten</rhyme>.</l>
        <l id="s2:l4" met="2" type="-+">Hy doet heele <rhyme label="b" type="f">dagen</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Niet anders als <rhyme label="b" type="f" corresp="#s2:l4">klagen</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Hy moet het, Hy moet het <rhyme label="b" type="f" corresp="#s2:l4">verdragen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy soekt door <rhyme label="a" type="f">gedigten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van ‘t minnen te <rhyme label="a" type="f" corresp="#s3:l1">stigten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Zijn hertje, zijn hertje te <rhyme label="a" type="f" corresp="#s3:l1">ligten</rhyme>;</l>
        <l id="s3:l4" met="2" type="-+">Indien hy een <rhyme label="b" type="f">briefjen</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Beschickt aan sijn <rhyme label="b" type="f" corresp="#s3:l4">liefjen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Het schijnt een, het schijnt een <rhyme label="b" type="f" corresp="#s3:l4">geriefjen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En heeft sy ‘t <rhyme label="a" type="f">ontfangen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hy sterft van <rhyme label="a" type="f" corresp="#s4:l1">verlangen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Hoe   ‘t al is, hoe ‘t al is <rhyme label="a" type="f" corresp="#s4:l1">vergangen</rhyme>.</l>
        <l id="s4:l4" met="2" type="-+">En schrijft sy dan <rhyme label="b" type="f">weder</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Dat set hem ter <rhyme label="b" type="f" corresp="#s4:l4">neder</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dus word hy, dus word hy   <rhyme label="b" type="f" corresp="#s4:l4">gereeder</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy wil <rhyme label="a" type="f">ondertussen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">De letteren <rhyme label="a" type="f" corresp="#s5:l1">kussen</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Dat kan hem, dat kan hem niet <rhyme label="a" type="f" corresp="#s5:l1">blussen</rhyme>:</l>
        <l id="s5:l4" met="2" type="-+">Hy dunkt of zijn <rhyme label="b" type="f">woorden</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Haar beter <rhyme label="b" type="f" corresp="#s5:l4">bekoorden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hy wenst dat, hy wenst dat s’ hem <rhyme label="b" type="f" corresp="#s5:l4">hoorden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En komt dan den <rhyme label="a" type="f">strijer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Na wenschen eens bij <rhyme label="a" type="f" corresp="#s6:l1">‘er</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Hy noemt sig, hy noemt sig haar <rhyme label="a" type="f" corresp="#s6:l1">vrijer</rhyme>;</l>
        <l id="s6:l4" met="2" type="-+">Hy wenst haar sijn <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Uyt liefde te <rhyme label="b" type="f" corresp="#s6:l4">geven</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Zijn hertje, sijn hertje daar <rhyme label="b" type="f" corresp="#s6:l4">neven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Na jaren te <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Begint hy te <rhyme label="a" type="f" corresp="#s7:l1">hoopen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Om ‘t bantjen, om ‘t bantjen te <rhyme label="a" type="f" corresp="#s7:l1">knoopen</rhyme>;</l>
        <l id="s7:l4" met="2" type="-+">Dan wil hy van <rhyme label="b" type="f">paren</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Zijn hert <rhyme label="b" type="f" corresp="#s7:l4">openbaren</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Hy sal ‘t haar, hy sal ‘t haar <rhyme label="b" type="f" corresp="#s7:l4">verklaren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hy soek onder <rhyme label="a" type="f">deken</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Nog meerder te <rhyme label="a" type="f" corresp="#s8:l1">spreken</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Ligt word het, Ligt word het <rhyme label="a" type="f" corresp="#s8:l1">bekeken</rhyme>.</l>
        <l id="s8:l4" met="2" type="-+">Hy doet daar het <rhyme label="b" type="f">diertjen</rhyme></l>
        <l id="s8:l5" met="2" type="-+">Een vrolick <rhyme label="b" type="f" corresp="#s8:l4">plaijsiertjen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En blust zo, en blust zo sijn <rhyme label="b" type="f" corresp="#s8:l4">viertjen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Men geeft zig tot <rhyme label="a" type="f">trouwen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">En moet malkaar <rhyme label="a" type="f" corresp="#s9:l1">houwen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Al soud het, al soud’ het ook <rhyme label="a" type="f" corresp="#s9:l1">rouwen</rhyme>.</l>
        <l id="s9:l4" met="2" type="-+">Dan soekt sy na ‘t <rhyme label="b" type="f">Trouwtjen</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Soo meenigen <rhyme label="b" type="f" corresp="#s9:l4">doutjen</rhyme>:</l>
        <l id="s9:l6" met="3" type="-+">Sy is nu, sy is nu het <rhyme label="b" type="f" corresp="#s9:l4">vrouwtjen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dan wil sy <rhyme label="a" type="f">regeeren</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Den Bloedt   <rhyme label="a" type="f" corresp="#s10:l1">commandeeren</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">Wie kan haar, wie kan haar dat <rhyme label="a" type="f" corresp="#s10:l1">keeren</rhyme>.</l>
        <l id="s10:l4" met="2" type="-+">Hy is wel te <rhyme label="b" type="f">vreden</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Mag hy aan haar <rhyme label="b" type="f" corresp="#s10:l4">leden</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Sijn deuvick, sijn deuvick <rhyme label="b" type="f" corresp="#s10:l4">besteden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Wil hy dan niet <rhyme label="a" type="f">naajen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Om ‘t Diertje te <rhyme label="a" type="f" corresp="#s11:l1">paajen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Sy sal hem, sy sal hem <rhyme label="a" type="f" corresp="#s11:l1">ontdraajen</rhyme>:</l>
        <l id="s11:l4" met="2" type="-+">Zy soekt tot haar <rhyme label="b" type="f">lusten</rhyme></l>
        <l id="s11:l5" met="2" type="-+">Een ander, die ‘t <rhyme label="b" type="f" corresp="#s11:l4">blusten</rhyme>:</l>
        <l id="s11:l6" met="3" type="-+">Eer sal zy, eer sal zy niet <rhyme label="b" type="f" corresp="#s11:l4">rusten</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dus, word hy wat <rhyme label="a" type="f">trager</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Soo krijgt hy een <rhyme label="a" type="f" corresp="#s12:l1">swager</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Die toont sig, die toont sig wat <rhyme label="a" type="f" corresp="#s12:l1">grager</rhyme>:</l>
        <l id="s12:l4" met="2" type="-+">Die leent zy haar <rhyme label="b" type="f">Buijkjen</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">En hy haar sijn <rhyme label="b" type="f" corresp="#s12:l4">struikjen</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Dus zijn sy, dus zijn sy in ‘t <rhyme label="b" type="f" corresp="#s12:l4">suykjen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Dit lustigh   <rhyme label="a" type="f">paartjen</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Maakt levende <rhyme label="a" type="f" corresp="#s13:l1">waartjen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Haar man die, haar man die heet <rhyme label="a" type="f" corresp="#s13:l1">vaartje</rhyme>!</l>
        <l id="s13:l4" met="2" type="-+">Hy isser het <rhyme label="b" type="f">boertjen</rhyme>.</l>
        <l id="s13:l5" met="2" type="-+">Dat leert haar haar <rhyme label="b" type="f" corresp="#s13:l4">moertjen</rhyme>:</l>
        <l id="s13:l6" met="3" type="-+">Sy speelen, sy speelen het <rhyme label="b" type="f" corresp="#s13:l4">Hoertjen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Siet, dat komt van ‘t <rhyme label="a" type="f">minnen</rhyme>!</l>
        <l id="s14:l2" met="3" type="-+">Wat sal hy <rhyme label="a" type="f" corresp="#s14:l1">beginnen</rhyme>?</l>
        <l id="s14:l3" met="3" type="-+">Al mist hy, al mist hy sijn <rhyme label="a" type="f" corresp="#s14:l1">sinnen</rhyme>,</l>
        <l id="s14:l4" met="2" type="-+">Hy moet het <rhyme label="b" type="f">verdragen</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">Want geeft hyse <rhyme label="b" type="f" corresp="#s14:l4">slagen</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Men salder, men salder van <rhyme label="b" type="f" corresp="#s14:l4">wagen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Dus die voor <rhyme label="a" type="f">leet-wezen</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Van zin is te <rhyme label="a" type="f" corresp="#s15:l1">vreezen</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Die laet hem, die laat hem <rhyme label="a" type="f" corresp="#s15:l1">belesen</rhyme>:</l>
        <l id="s15:l4" met="2" type="-+">O arme <rhyme label="b" type="f">sotten</rhyme>,</l>
        <l id="s15:l5" met="2" type="-+">Ik laatje <rhyme label="b" type="f" corresp="#s15:l4">bedotten</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Men salje, men salje <rhyme label="b" type="f" corresp="#s15:l4">bespotten</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Ik raadje voor ‘t <rhyme label="a" type="f">leste</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Nog eenmaal ten <rhyme label="a" type="f" corresp="#s16:l1">beste</rhyme>:</l>
        <l id="s16:l3" met="3" type="-+">De Vrouwen, de Vrouwen zijn <rhyme label="a" type="f" corresp="#s16:l1">pesten</rhyme>!</l>
        <l id="s16:l4" met="2" type="-+">Zy kan door haar <rhyme label="b" type="f">liegen</rhyme>,</l>
        <l id="s16:l5" met="2" type="-+">U deftig <rhyme label="b" type="f" corresp="#s16:l4">bedriegen</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Dus laat u, dus laat u niet <rhyme label="b" type="f" corresp="#s16:l4">wiegen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
