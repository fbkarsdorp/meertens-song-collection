    <melody>Hoe lig ik hier in deze ellende</melody>
    <categories>
      <category translation="cycle of life">levenscyclus</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIe kan de Maeghdom bet <rhyme label="a" type="f">besteden</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Als die, die beter daer voor <rhyme label="b" type="m">kiest</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Wie kuyschlijck trouwt, 't bestaet op <rhyme label="a" type="f" corresp="#s1:l1">reden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">De Maeghdom nimmermeer <rhyme label="b" type="m" corresp="#s1:l2">verliest</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Lof o Echt, lof <rhyme label="c" type="f">Nieuw-getroude</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Lof reyne liefd', lof <rhyme label="c" type="f" corresp="#s1:l5">Nieuw-gehoude</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O soet gebindt, wiens sachte <rhyme label="a" type="f">banden</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Beteugelen dees broosse <rhyme label="b" type="m">lust</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Betemmen sond', betuchten <rhyme label="a" type="f" corresp="#s2:l1">schanden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">d'Aenvechters van der vroomen <rhyme label="b" type="m" corresp="#s2:l2">rust</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Lof o Echt, lof <rhyme label="c" type="f">Nieuw-getrouwde</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Lof reyne liefd', lof <rhyme label="c" type="f" corresp="#s2:l5">Nieuw-gehouwde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Na dien de tijdt gebiet te <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Soo wenschen wy u beyde <rhyme label="b" type="m">t'saem</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat Godes geest u wil <rhyme label="a" type="f" corresp="#s3:l1">geleyden</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Hier mee vaert wel in 's Heeren <rhyme label="b" type="m" corresp="#s3:l2">naem</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Lof o Echt, lof <rhyme label="c" type="f">Nieuw-getrouwde</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Lof reyne liefd', lof <rhyme label="c" type="f" corresp="#s3:l5">Nieuw-gehouwde</rhyme>.</l>
      </lg>
    </lg>
  </text>
