    <melody>Nerea schoonste van uw geburen</melody>
  <author>Barent Pietersz. Kompas</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEyl-rijcke Godt, getrouwe <rhyme label="a" type="f">Herder</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wilt doch mijn bee verhooren <rhyme label="b" type="m">Heer</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Laet my uw Schaep niet doolen <rhyme label="a" type="f" corresp="#s1:l1">verder</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Maer brenght my in uw' Schaeps-koy <rhyme label="b" type="m" corresp="#s1:l2">weer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wilt van 't verdoolde padt my <rhyme label="a" type="f">brengen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En helpen op de rechte <rhyme label="b" type="m">baen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Heer! wilt in my geen sond' <rhyme label="a" type="f" corresp="#s2:l1">gehengen</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Maer scheltse quijt die 'k heb <rhyme label="b" type="m" corresp="#s2:l2">misdaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Geef, dat ick uwe Wet mach <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En uw' Geboden gade <rhyme label="b" type="m">slaen</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Om dan alleen tot uw's Naems <rhyme label="a" type="f" corresp="#s3:l1">eere</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Het rechte Hemel-padt te <rhyme label="b" type="m" corresp="#s3:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Geef, dat ick hier op d' Aerd' mach <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Na uw soo nut en heylsaem <rhyme label="b" type="m">Woordt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En u van mijne jonckheydt <rhyme label="a" type="f" corresp="#s4:l1">geven</rhyme></l>
        <l id="s4:l4" met="4" type="-+">De eerstelingen, soo 't <rhyme label="b" type="m" corresp="#s4:l2">behoort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Geef, Heer, dat ick hier na mach <rhyme label="a" type="f">woone</rhyme></l>
        <l id="s5:l2" met="4" type="-+">By u, in uw Konincklijck <rhyme label="b" type="m">Huys</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Wilt my doch met uw' Kind'ren <rhyme label="a" type="f" corresp="#s5:l1">Kroone</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Met groote vreughd', bevrijdt van <rhyme label="b" type="m" corresp="#s5:l2">Kruys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En wilt, o Heer! aen my doch <rhyme label="a" type="f">geven</rhyme>:</l>
        <l id="s6:l2" met="4" type="-+">Dat ick mach na dees' korte <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">In overgroote blijdtschap <rhyme label="a" type="f" corresp="#s6:l1">leven</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Tot aller eeuwen <rhyme label="b" type="m" corresp="#s6:l2">eeuwigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
