    <melody>Nun welche hie ihre Hoffnung gar</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SAlich is hy die den Heer vreest <rhyme label="a" type="m">fyn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En aen zijn gheboden hier op <rhyme label="b" type="f">eerden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Lust heeft: diens Zaet sal machtich <rhyme label="a" type="m" corresp="#s1:l1">syn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Op deerd, en ghebenedijt <rhyme label="b" type="f" corresp="#s1:l2">weerden</rhyme></l>
        <l id="s1:l5" met="2" type="-+">En tgheslacht <rhyme label="c" type="m">vanden</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Op <rhyme label="c" type="m" corresp="#s1:l5">gherechten</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Van rijckdom en volheyt <rhyme label="d" type="f">diesglijcke</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Sal wesen hun <rhyme label="e" type="m">huys</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Sonder eenich <rhyme label="e" type="m" corresp="#s1:l8">abuys</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Hun rechtuaerdicheyt blijft oock <rhyme label="d" type="f" corresp="#s1:l7">eewlijcke</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den oprechten gaet sonder <rhyme label="a" type="m">spodt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat licht op inde <rhyme label="b" type="f">duysternis</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Vanden gnadighen en rechtuaerdighen <rhyme label="a" type="m" corresp="#s2:l1">Godt</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Salich is hy, die bermhertich <rhyme label="b" type="f" corresp="#s2:l2">is</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">En die gheerne <rhyme label="c" type="m">leendt</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Oock syn saeck so <rhyme label="c" type="m" corresp="#s2:l5">voleendt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Datter niemandt door en word <rhyme label="d" type="f">bescheten</rhyme>:</l>
        <l id="s2:l8" met="2" type="-+">Eewlijck blijuen <rhyme label="e" type="m">sal</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">De rechtuaerdighe <rhyme label="e" type="m" corresp="#s2:l8">al</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">En nimmermeer worden <rhyme label="d" type="f" corresp="#s2:l7">vergheten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wanneer dat God straft, en oock <rhyme label="a" type="m">plaecht</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">So en vreest hij hem niet <rhyme label="b" type="f">seere</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Sijn  hert dat hoept gheheel <rhyme label="a" type="m" corresp="#s3:l1">onuerzaecht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Vastelijck op Godt den <rhyme label="b" type="f" corresp="#s3:l2">Heere</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Sijn hert ghetroost <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">En ten vreest niet <rhyme label="c" type="m" corresp="#s3:l5">ghewis</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Tot dat hy synen lust siet <rhyme label="d" type="f">haestlijcken</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Aen syne <rhyme label="e" type="m">vyanden</rhyme>:</l>
        <l id="s3:l9" met="2" type="-+">En hy reyckt syn <rhyme label="e" type="m" corresp="#s3:l8">banden</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Den Armen alle <rhyme label="d" type="f" corresp="#s3:l7">ghelijcke</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Eewelijck blijft syn <rhyme label="a" type="m">rechtuaerdicheyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En met eeren wordt syn horn <rhyme label="b" type="f">verheuen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">dGodloos dit siende sal dies draghen <rhyme label="a" type="m" corresp="#s4:l1">leydt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En sulcks sal hem verdrieten <rhyme label="b" type="f" corresp="#s4:l2">euen</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Dies sal hy <rhyme label="c" type="m">subijte</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Te samen <rhyme label="c" type="m" corresp="#s4:l5">bijten</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Sijn tanden, en oock gheheel <rhyme label="d" type="f">vergaen</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">En wat hy had <rhyme label="e" type="m">gheeren</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Dat sal hy <rhyme label="e" type="m" corresp="#s4:l8">ontbeeren</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">En al syn begheren, is tvergheefs <rhyme label="d" type="f" corresp="#s4:l7">ghedaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
