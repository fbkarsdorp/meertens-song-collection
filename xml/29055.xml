<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>29055</id>
    <date>
      <year-start>1660</year-start>
      <year-end>1660</year-end>
    </date>
    <tags>
      <tag>scenic song</tag>
      <tag>farewell song</tag>
    </tags>
    <melody>In het voorjaar eer Aurora brak uit</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">In 't Naejaer, eer Auroor brack <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Gingender vier uyt <rhyme label="b" type="f">gorren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De jonghste van al songh over <rhyme label="a" type="m" corresp="#s1:l1">luyt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maer sweech wel haest door 't <rhyme label="b" type="f" corresp="#s1:l2">knorren</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">van 't quaet wijf, dat dol en <rhyme label="c" type="m">verwoedt</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Trock een verroeste <rhyme label="d" type="f">sabel</rhyme></l>
        <l id="s1:l7" met="6" type="+-">Tegen sestien jonghmans die seer wel <rhyme label="c" type="m" corresp="#s1:l5">gemoedt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Te samen waeren <rhyme label="d" type="f" corresp="#s1:l6">abel</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Sy riep, jou schelm, en <rhyme label="e" type="f">dieven</rhyme>,,</l>
        <l id="s1:l10" met="3" type="-+">en sy maeckten groot <rhyme label="f" type="m">getier</rhyme></l>
        <l id="s1:l11" met="3" type="+-">'t Was nae jonckmans <rhyme label="e" type="f" corresp="#s1:l9">believen</rhyme>,,</l>
        <l id="s1:l12" met="4" type="+-">sy verheuchten des te <rhyme label="f" type="m" corresp="#s1:l10">mier</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
