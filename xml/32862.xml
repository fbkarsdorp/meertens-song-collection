<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>32862</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody>O rad van avontuur</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Godt van grooten <rhyme label="a" type="f">crachten</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die ons alsoo hebt <rhyme label="b" type="m">bereyt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dat wy altoos souden <rhyme label="a" type="f" corresp="#s1:l1">trachten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Op ons eeuwige <rhyme label="b" type="m" corresp="#s1:l2">salicheyt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">V goetheyt bouen <rhyme label="c" type="f">maten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En connen wy niet genoch door <rhyme label="d" type="m">zien</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Maer v moghentheyt wy <rhyme label="c" type="f" corresp="#s1:l5">laten</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Met ons verstant te <rhyme label="c" type="f" corresp="#s1:l5">omvaten</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Dan moet door t’ghelooue <rhyme label="d" type="m" corresp="#s1:l6">gheschien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een Godt wort ons <rhyme label="a" type="f">gheboden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat daer is ende niet <rhyme label="b" type="m">meer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Wy veruoyen alle <rhyme label="a" type="f" corresp="#s2:l1">afgoden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En gheloouen in v o <rhyme label="b" type="m" corresp="#s2:l2">Heer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ghy zijt van <rhyme label="c" type="f">eeuwicheden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gheweest sonder <rhyme label="d" type="m">beghin</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Die onse voor vaders hebben <rhyme label="c" type="f" corresp="#s2:l5">aengebeden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Door wiens naem zy wonder <rhyme label="c" type="f" corresp="#s2:l5">deden</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Hier gheloouen wy oock <rhyme label="d" type="m" corresp="#s2:l6">in</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wy Christenen <rhyme label="a" type="f">allegader</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Verwachten een goeden <rhyme label="b" type="m">loon</rhyme></l>
        <l id="s3:l3" met="3" type="-+">En ghelouen in Godt den <rhyme label="a" type="f" corresp="#s3:l1">Vader</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ende oock mede in zijnen <rhyme label="b" type="m" corresp="#s3:l2">Soon</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Den heilighen Geest <rhyme label="c" type="f">waerachtich</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Dese is mede <rhyme label="d" type="m">Godt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Al euen eeuwich, en <rhyme label="c" type="f" corresp="#s3:l5">almachtich</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Oock euen heylich, ende <rhyme label="c" type="f" corresp="#s3:l5">crachtich</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Die ghelouen wy zonder <rhyme label="d" type="m" corresp="#s3:l6">spot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dese drye persoonen <rhyme label="a" type="f">verheuen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sijn maer eenen <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Al wort elck den naem van Godt <rhyme label="a" type="f" corresp="#s4:l1">ghegeuen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Nochtans gheen drye goden, dat zy <rhyme label="b" type="m" corresp="#s4:l2">veer</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Den Vader wort toe <rhyme label="c" type="f">ghegeuen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat hijt al gheschapen <rhyme label="d" type="m">heeft</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Den zoon wort toe <rhyme label="c" type="f" corresp="#s4:l5">geschreuen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Den verlosser al die <rhyme label="c" type="f" corresp="#s4:l5">leuen</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Den H. Gheest ons die heylicheyt <rhyme label="d" type="m" corresp="#s4:l6">gheeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wy draeghen in onse sielen dit <rhyme label="a" type="f">wapen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van die heylighe <rhyme label="b" type="m">Drieuuldicheyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En zijn nae sijnen beelde <rhyme label="a" type="f" corresp="#s5:l1">gheschapen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Soo hy dat seluer <rhyme label="b" type="m" corresp="#s5:l2">seyt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Onser zielen drie <rhyme label="c" type="f">crachten</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Als Memorie, verstant, ende wille <rhyme label="d" type="m">vry</rhyme></l>
        <l id="s5:l7" met="3" type="-+">De Memory hoort Godt van <rhyme label="c" type="f" corresp="#s5:l5">machten</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Het verstant den Soon comt <rhyme label="c" type="f" corresp="#s5:l5">betrachten</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Den wille O H. Gheest die geuen wy <rhyme label="d" type="m" corresp="#s5:l6">dy</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy Vader die alle eere moet <rhyme label="a" type="f">behooren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Hebt beghin noch eenich <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">En ghy Soon, zijt van v Vader <rhyme label="a" type="f" corresp="#s6:l1">gebooren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Hoe wel ghy niet geschapen en <rhyme label="b" type="m" corresp="#s6:l2">zijt</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Maer zijt eewich een, in alle <rhyme label="c" type="f">vreden</rhyme></l>
        <l id="s6:l6" met="3" type="-+">By uwen Vader <rhyme label="d" type="m">gheweest</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Oock is van alle <rhyme label="c" type="f" corresp="#s6:l5">eeuwicheden</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Den derden persoon nae <rhyme label="c" type="f" corresp="#s6:l5">reden</rhyme></l>
        <l id="s6:l9" met="3" type="-+">D’welck is den heylighen <rhyme label="d" type="m" corresp="#s6:l6">Gheest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus aenroepen wy den Vader <rhyme label="a" type="f">almachtich</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Ende prijsen die wijsheyt vanden <rhyme label="b" type="m">Soon</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Die goetheyt des gheests <rhyme label="a" type="f" corresp="#s7:l1">warachtich</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Die daer woont int s’hemels <rhyme label="b" type="m" corresp="#s7:l2">throon</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Maer eenen Godt <rhyme label="c" type="f">verheuen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Bouen al diemen Goden <rhyme label="d" type="m">noemt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Al wort elck sijn werck toe <rhyme label="c" type="f" corresp="#s7:l5">gheschreuen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">En den naem hier af <rhyme label="c" type="f" corresp="#s7:l5">ghegheuen</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Van eenen Godt onze salicheyt nochtans <rhyme label="d" type="m" corresp="#s7:l6">coemt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
