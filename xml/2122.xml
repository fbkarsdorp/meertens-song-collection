  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs Meester Jan den <rhyme label="a" type="f">Timmer-man</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Luyck naer Brussel <rhyme label="b" type="m">quam</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Logeerden hy by <rhyme label="a" type="f" corresp="#s1:l1">Herreman</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ter Hulpen in Stadts <rhyme label="b" type="m" corresp="#s1:l2">Kam</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Maer als hy was <rhyme label="c" type="m">gheseten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Vondt hy daer qualyck <rhyme label="c" type="m" corresp="#s1:l5">t'eten</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Hy at een schotel <rhyme label="d" type="f">rapen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En dronck een' pint vaets <rhyme label="e" type="m">bier</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">En daer-med' gingh hy <rhyme label="d" type="f" corresp="#s1:l7">slapen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Was dat niet een slecht <rhyme label="e" type="m" corresp="#s1:l8">goedt-cier</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer eer hy was <rhyme label="a" type="f">gheleghen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Eer hy in 't bedde <rhyme label="b" type="m">kroop</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Bevondt hy dat den <rhyme label="a" type="f" corresp="#s2:l1">reghen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Door 't dack op 't bedde <rhyme label="b" type="m" corresp="#s2:l2">droop</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Den Man nam synen <rhyme label="c" type="m">Hamer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hy botsten aen de <rhyme label="c" type="m" corresp="#s2:l5">Kamer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hy woud' het gat <rhyme label="d" type="f">toe-stoppen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Waer-door den wint quam <rhyme label="e" type="m">in</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Hy maeckten door syn <rhyme label="d" type="f" corresp="#s2:l7">kloppen</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Groot ramoer in 't <rhyme label="e" type="m" corresp="#s2:l8">Huys-gesin</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Weert die riep; wel <rhyme label="a" type="f">macker</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wat droes, wat tier is <rhyme label="b" type="m">dat</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ghy maeckt de Kinders <rhyme label="a" type="f" corresp="#s3:l1">wacker</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gaet slapen rust doch <rhyme label="b" type="m" corresp="#s3:l2">wat</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Ghy zyt in <rhyme label="c" type="m">d'Herreberghe</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">G'en blyft hier maer tot <rhyme label="c" type="m" corresp="#s3:l5">mergen</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">Hebd' hier logist <rhyme label="d" type="f">ghenomen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Soo nemt met ons <rhyme label="e" type="m">ghedult</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Peyst als ghy t'Huys sult <rhyme label="d" type="f" corresp="#s3:l7">komen</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Dat ghy beter rusten <rhyme label="e" type="m" corresp="#s3:l8">sult</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den Weert heeft hier <rhyme label="a" type="f">gegeven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Een' weerde Les vol <rhyme label="b" type="m">mergh</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om dat het menschen <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Is als een' <rhyme label="b" type="m" corresp="#s4:l2">Herrebergh</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Ons Lichaem is vol <rhyme label="c" type="m">gaten</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Daer wy quaed' locht door <rhyme label="c" type="m" corresp="#s4:l5">vaten</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Men konnen die niet <rhyme label="d" type="f">stoppen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Voor dat den <rhyme label="e" type="m">Timmer-man</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Ons in de kist sal <rhyme label="d" type="f" corresp="#s4:l7">kloppen</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Zyt hier wat verduldigh <rhyme label="e" type="m" corresp="#s4:l8">dan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo g'om de Noordtsche <rhyme label="a" type="f">winden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wilt maken groot <rhyme label="b" type="m">gherucht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gy sult twee Kruyskens <rhyme label="a" type="f" corresp="#s5:l1">vinden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Soo ghy een Kruysken <rhyme label="b" type="m" corresp="#s5:l2">vlucht</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ghy sult door <rhyme label="c" type="m">onpatientie</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ontrusten uw' <rhyme label="c" type="m" corresp="#s5:l5">conscientie</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Als ghy dan in het <rhyme label="d" type="f">rysen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Lydt eenigh <rhyme label="e" type="m">ongheval</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Seght dan tot uw' <rhyme label="d" type="f" corresp="#s5:l7">ghepysen</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">D'hop' van rust versoet het <rhyme label="e" type="m" corresp="#s5:l8">al</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Als Jesus wirdt <rhyme label="a" type="f">gheboren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Doen heeft hy eenen <rhyme label="b" type="m">Stal</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Voor Herrebergh <rhyme label="a" type="f" corresp="#s6:l1">verkoren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In dit droef <rhyme label="b" type="m" corresp="#s6:l2">tranen-dal</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Den windt quam door de <rhyme label="c" type="m">spleten</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Op 't Kribbeken <rhyme label="c" type="m" corresp="#s6:l5">ghesmeten</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">'t Was Jesus <rhyme label="d" type="f">aenghenamer</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Te lyden <rhyme label="e" type="m">ongheval</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Al kost Sint' Josephs <rhyme label="d" type="f" corresp="#s6:l7">hamer</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Timmeren den ermen <rhyme label="e" type="m" corresp="#s6:l8">Stal</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En hadd' den Heer der <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Gheen slechte <rhyme label="b" type="m">Herrebergh</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Als hy stirf sonder <rhyme label="a" type="f" corresp="#s7:l1">kleeren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Op den <rhyme label="b" type="m" corresp="#s7:l2">Calvarie-bergh</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Hoe wirdt hy daer <rhyme label="c" type="m">beschoncken</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Als hy heeft gal <rhyme label="c" type="m" corresp="#s7:l5">ghedroncken</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Het Lam led' dit <rhyme label="d" type="f">verduldigh</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Die 's Wereldts sond' <rhyme label="e" type="m">af-nam</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Al was den Heer' <rhyme label="d" type="f" corresp="#s7:l7">onschuldigh</rhyme></l>
        <l id="s7:l10" met="3" type="-+">En onnoosel als een <rhyme label="e" type="m" corresp="#s7:l8">Lam</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Leert dan in <rhyme label="a" type="f">d'Herreberghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Wat lyden met den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">G'en blyft hier maer tot <rhyme label="a" type="f" corresp="#s8:l1">mergen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Tot merghen en niet <rhyme label="b" type="m" corresp="#s8:l2">meer</rhyme>;</l>
        <l id="s8:l5" met="3" type="-+">'t Quaedt dat wy hier <rhyme label="c" type="m">verdragen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">En duert maer luttel <rhyme label="c" type="m" corresp="#s8:l5">daghen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Wy rysen naer de <rhyme label="d" type="f">kusten</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Van 't Hemelsch <rhyme label="e" type="m">Vader-landt</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Daer w'eeuwigh sullen <rhyme label="d" type="f" corresp="#s8:l7">rusten</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Ende leven heel <rhyme label="e" type="m" corresp="#s8:l8">plaisant</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
