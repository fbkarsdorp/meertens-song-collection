<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>183519</id>
    <date>
      <year-start>1789</year-start>
      <year-end>1789</year-end>
    </date>
    <tags/>
    <melody>Wat is ons al vreugde gegeven</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wat was ons al vreugd <rhyme label="a" type="f">gegeeven</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Toen wy waagden goed en <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Tot behoud der <rhyme label="b" type="m">Vryheids-Speer</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">By het handelen van 't <rhyme label="b" type="m" corresp="#s1:l3">Geweer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Elk zag men zyn Plicht <rhyme label="a" type="f">betrachten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Werken met vereende <rhyme label="a" type="f" corresp="#s2:l1">kragten</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Onbedwongen, vry en <rhyme label="b" type="m">bly</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Tot het heil der <rhyme label="b" type="m" corresp="#s2:l3">Maatschappy</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maar nu ziet men vuige <rhyme label="a" type="f">Slaven</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Op den wenk der Heerschzugt <rhyme label="a" type="f" corresp="#s3:l1">draven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En als blind' <rhyme label="b" type="m">Oranje-zot</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Schimpen op den <rhyme label="b" type="m" corresp="#s3:l3">Patriot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dus ziet men hoe 't kan <rhyme label="a" type="f">verkeeren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En 't Geweld het Recht <rhyme label="a" type="f" corresp="#s4:l1">verheeren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Eerlyk, braaf en deugdzaam <rhyme label="b" type="m">werk</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Is gehand uit Land en <rhyme label="b" type="m" corresp="#s4:l3">Kerk</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">ô Myn brave Vryheids- <rhyme label="a" type="f">vrinden</rhyme>!</l>
        <l id="s5:l2" met="4" type="-+">Laat deez' woeden en <rhyme label="a" type="f" corresp="#s5:l1">verblinden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Hoop, maar hunne gangen <rhyme label="b" type="m">gaan</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Vryheids Dag die breekt reeds <rhyme label="b" type="m" corresp="#s5:l3">aan</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Laat ons brave Lod'wyk <rhyme label="a" type="f">pryzen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Door hem zien we ons Heil <rhyme label="a" type="f" corresp="#s6:l1">verryzen</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Juicht Bataven! Vrankryks <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Velt voor u de Dwangzucht <rhyme label="b" type="m" corresp="#s6:l3">neer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">ô Ja! my dunkt 'k zie hem reeds <rhyme label="a" type="f">komen</rhyme>;</l>
        <l id="s7:l2" met="4" type="-+">Vrees en angsten <rhyme label="a" type="f" corresp="#s7:l1">overstromen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">'t Hart van onzen <rhyme label="b" type="m">Dwingeland</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Nu de Vryheid weer krygt <rhyme label="b" type="m" corresp="#s7:l3">stand</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
