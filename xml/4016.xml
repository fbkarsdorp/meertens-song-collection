    <melody>Het zouden drie gespeeltjes goed</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MI verlanghet also <rhyme label="a" type="f">seere</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Soete lief na v <rhyme label="b" type="m">duecht</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ende wat sultghi mi <rhyme label="c" type="f">gheuen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Daer ghi mi mede <rhyme label="b" type="m" corresp="#s1:l2">verhuecht</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick sal v ghiften <rhyme label="a" type="f">gheuen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Och edel siele <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Mijn ghestadighe <rhyme label="c" type="f">minne</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die sal v wesen <rhyme label="b" type="m" corresp="#s2:l2">bi</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O minnelike <rhyme label="a" type="f">heere</rhyme></l>
        <l id="s3:l2" met="3" type="-+">V minne die is so <rhyme label="b" type="m">soet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Mochte mi die <rhyme label="c" type="f">ghebueren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Daer voer en kore ick niet alder werelt <rhyme label="b" type="m" corresp="#s3:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Si sal v wel <rhyme label="a" type="f">ghebueren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Och edel siele <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Wilt ghi nature <rhyme label="c" type="f">steruen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Al doer die minne van <rhyme label="b" type="m" corresp="#s4:l2">mi</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Och mijn nature te <rhyme label="a" type="f">steruen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat wort mi pine <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Nochtans sal si verwonnen <rhyme label="c" type="f">wesen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Doer uwe bitter <rhyme label="b" type="m" corresp="#s5:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O siele wel lieue <rhyme label="a" type="f">siele</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wilt ghi nature <rhyme label="b" type="m">steruen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ick salt v so wel <rhyme label="c" type="f">loonen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Al in mijns vaders <rhyme label="b" type="m" corresp="#s6:l2">erue</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O heere wel lieue <rhyme label="a" type="f">heere</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Mocht ick v hulpe <rhyme label="b" type="m">verweruen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Nature is <rhyme label="c" type="f">onbedwonghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Si wil den gheest <rhyme label="b" type="m" corresp="#s7:l2">bederuen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O siele wel lieuwe <rhyme label="a" type="f">siele</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ten baet v nu gheen <rhyme label="b" type="m">claghen</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Ghi moet v cruyce <rhyme label="c" type="f">draghen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Doer bosschen ende doer <rhyme label="b" type="m" corresp="#s8:l2">haghen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O heere wel lieue <rhyme label="a" type="f">heere</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Dit cruyce valt mi so <rhyme label="b" type="m">swaer</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Ic en cant niet wel <rhyme label="c" type="f">ghedraghen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Heere God wilt mi bi <rhyme label="b" type="m" corresp="#s9:l2">staen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ick hebt voer v <rhyme label="a" type="f">ghedragen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Wel drie en dertich <rhyme label="b" type="m">iaer</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Totten berch van <rhyme label="c" type="f">oliueten</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Daer ic den doot aen sterf <rhyme label="b" type="m" corresp="#s10:l2">claer</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Nu wil ic gaen <rhyme label="a" type="f">beghinnen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Het moet gheleden <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Ic bidde der maghet <rhyme label="c" type="f">Maria</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Dat si mijn hulpe wil <rhyme label="b" type="m" corresp="#s11:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Nu laet ons Gode <rhyme label="a" type="f">bidden</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Nu ende tot alder <rhyme label="b" type="m">tijt</rhyme>.</l>
        <l id="s12:l3" met="3" type="-+">Dat wi hier namaels <rhyme label="c" type="f">comen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Al in dat eewich <rhyme label="b" type="m" corresp="#s12:l2">rijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
