    <melody>O salutaris hostia</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy zijt Mijn Godt, Mijn al, Mijn <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Besneden in u leedjes <rhyme label="a" type="m" corresp="#s1:l1">teer</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Weest Iesu, Mijn Iesu <rhyme label="b" type="m">gegroet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die voor ons stort 't onnoosel <rhyme label="b" type="m" corresp="#s1:l3">bloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy zijt seer swaerelijck <rhyme label="a" type="m">gewont</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Om onse schuldt, om onse <rhyme label="a" type="m" corresp="#s2:l1">sondt</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Om dat wy waren al <rhyme label="b" type="m">verdoemt</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Hierom zijt ghy Iesus <rhyme label="b" type="m" corresp="#s2:l3">ghenoemt</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want ghy ons Zalighmaken <rhyme label="a" type="m">sult</rhyme>;</l>
        <l id="s3:l2" met="4" type="-+">Met u bloedt vol-doen Adams <rhyme label="a" type="m" corresp="#s3:l1">schult</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">U Naem, door u Vaders <rhyme label="b" type="m">bevel</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Verkondight is door <rhyme label="b" type="m" corresp="#s3:l3">Gabriël</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al was de Naem Iesus, <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Van oudts, in 't oude <rhyme label="a" type="m" corresp="#s4:l1">Testament</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die naem, u naem niet meer <rhyme label="b" type="m">gelijck</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Was, als by't gout is dreck of <rhyme label="b" type="m" corresp="#s4:l3">slijck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Zy waren Zaligh-makers <rhyme label="a" type="m">geen</rhyme>;</l>
        <l id="s5:l2" met="4" type="-+">'t Waren Dienaers van u <rhyme label="a" type="m" corresp="#s5:l1">alleen</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Geen saeck is waerder op der <rhyme label="b" type="m">aerdt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Als u Naem: Iesus, hoogh van <rhyme label="b" type="m" corresp="#s5:l3">waerdt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">U Naem is schoonder als de <rhyme label="a" type="m">Son</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">U Naem is stercker als <rhyme label="a" type="m" corresp="#s6:l1">Samson</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Niemant sal krijgen <rhyme label="b" type="m">zaligheyt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Als door Naem, soo Petrus <rhyme label="b" type="m" corresp="#s6:l3">seydt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Door u Naem yder buygen <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Sijn knyen twee, met groot <rhyme label="a" type="m" corresp="#s7:l1">ootmoet</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Al die in d'Hemel, en hier <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En die onder d'aerdt lijde <rhyme label="b" type="m" corresp="#s7:l3">pijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">U Naem is boven suycker <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">'t Vertroost, 't versterckt 't benout <rhyme label="a" type="m" corresp="#s8:l1">gemoet</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">U Naem geeft troost, hoop en <rhyme label="b" type="m">vermaeck</rhyme>;</l>
        <l id="s8:l4" met="4" type="-+">Hier voor moet vluchte d'helsche <rhyme label="b" type="m" corresp="#s8:l3">draeck</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">U Naem is een zuyv're <rhyme label="a" type="m">fonteyn</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Maeckt ons ootmoedigh, ende <rhyme label="a" type="m" corresp="#s9:l1">reyn</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Niemandt, ô Iesu! is <rhyme label="b" type="m">bequaem</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Te spreken de lof van u <rhyme label="b" type="m" corresp="#s9:l3">Naem</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hoe veel lof men van u Naem <rhyme label="a" type="m">spreeckt</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Een zee vol lof altijdt <rhyme label="a" type="m" corresp="#s10:l1">gebreeckt</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">ô Iesu! Iesu! Iesu <rhyme label="b" type="m">soet</rhyme>!</l>
        <l id="s10:l4" met="4" type="-+">U Naem zijt duysentmael <rhyme label="b" type="m" corresp="#s10:l3">gegroet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Och Iesu! met een druppel <rhyme label="a" type="m">bloedt</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Ontsteeckt mijn hart en flauw <rhyme label="a" type="m" corresp="#s11:l1">gemoedt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dat ick in u liefde mach <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Branden als een <rhyme label="b" type="m" corresp="#s11:l3">Seraphyn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maeckt Saligh Iesu! mijnen <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Hierom ootmoedigh voor u 'k <rhyme label="a" type="m" corresp="#s12:l1">kniel</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Dan sal ick singen t'allen <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Dat ghy mijn Iesus, Iesus <rhyme label="b" type="m" corresp="#s12:l3">zijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
