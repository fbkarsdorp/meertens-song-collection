<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21376</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Treuren zo moet ik nacht en dag</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOort vrienden tot des Heeren <rhyme label="a" type="m">lof</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Sal ick dit Liet <rhyme label="b" type="f">beghinnen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Men cant met singen <rhyme label="a" type="m" corresp="#s1:l1">misbruycken</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Want smenschen hert en <rhyme label="b" type="f" corresp="#s1:l2">sinnen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dat is gheneghen tot <rhyme label="c" type="m">ydelheyt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Hier om heb ick dit liet <rhyme label="c" type="m" corresp="#s1:l5">bereyt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Tot waerschouwinge wt <rhyme label="b" type="f" corresp="#s1:l2">minnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy zijn nu van die helsche <rhyme label="a" type="m">pijn</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ontslaghen <rhyme label="b" type="f">allegader</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die recht tot Christum gecomen <rhyme label="a" type="m" corresp="#s2:l1">zijn</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ghetrocken van Godt den <rhyme label="b" type="f" corresp="#s2:l2">vader</rhyme></l>
        <l id="s2:l5" met="4" type="-+">So wy Christus aennamen hoort Paulus <rhyme label="c" type="m">stem</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Vrienden laet ons so wandelen in <rhyme label="c" type="m" corresp="#s2:l5">hem</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Gods beelt vast comen <rhyme label="b" type="f" corresp="#s2:l2">nader</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hebben wy Christum genomen <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met droefheyt meer dan <rhyme label="b" type="f">vruechden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Door berou van sonde boete <rhyme label="a" type="m" corresp="#s3:l1">ghedaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Eer wy waren bequaem tot <rhyme label="b" type="f" corresp="#s3:l2">duechden</rhyme></l>
        <l id="s3:l5" met="4" type="-+">En ontslagen al van die eeuwige <rhyme label="c" type="m">smart</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Mosten wy hebben een ghebroken <rhyme label="c" type="m" corresp="#s3:l5">hert</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Gods gracy ons <rhyme label="b" type="f" corresp="#s3:l2">verhuechden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dat gebroken hert en v'nederden <rhyme label="a" type="m">geest</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Och vrienden laet ons <rhyme label="b" type="f">behouden</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Petrus schrijft also men <rhyme label="a" type="m" corresp="#s4:l1">leest</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat wy ouer brenghen <rhyme label="b" type="f" corresp="#s4:l2">souden</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Den tijt onser pelgeremagen <rhyme label="c" type="m">ganck</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Met vresen en beuen v blijschap <rhyme label="c" type="m" corresp="#s4:l5">sanck</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Toch maticht ionck en <rhyme label="b" type="f" corresp="#s4:l2">ouden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wat accordeert hier Petrus <rhyme label="a" type="m">leer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met Paulus <rhyme label="b" type="f">informacy</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Daer hy schrijft verblijt v in den <rhyme label="a" type="m" corresp="#s5:l1">Heer</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Anderwerf vermaent hy die <rhyme label="b" type="f" corresp="#s5:l2">nacy</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Mijn dunckt dat Paulus en Petrus <rhyme label="c" type="m">woort</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Te samen wel hebben goet <rhyme label="c" type="m" corresp="#s5:l5">accoort</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">O Christen <rhyme label="b" type="f" corresp="#s5:l2">generacy</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Siet vrienden die <rhyme label="a" type="m">vergiffenis</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Van sonden hebben wy <rhyme label="b" type="f">vercregen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Maer wat den roep der Christenen <rhyme label="a" type="m" corresp="#s6:l1">is</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In Godes vrese vroom te <rhyme label="b" type="f" corresp="#s6:l2">leuen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Ons seluen hier niet te leuen <rhyme label="c" type="m">net</rhyme></l>
        <l id="s6:l6" met="4" type="-+">maer heylich godsalich na Christus <rhyme label="c" type="m" corresp="#s6:l5">wet</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Dat onreyne hier niet <rhyme label="b" type="f" corresp="#s6:l2">aencleuen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wy moeten hier wesen een <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En dat nae Christus <rhyme label="b" type="f">reden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Die in hem geloouen verstaet mijn <rhyme label="a" type="m" corresp="#s7:l1">dicht</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Christus spreckt wt diens <rhyme label="b" type="f" corresp="#s7:l2">leden</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Sullen vloeyen leuende wateren <rhyme label="c" type="m">claer</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Ons seluen hier so te bewijsen <rhyme label="c" type="m" corresp="#s7:l5">eenpaer</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Daer moet vroom zijn <rhyme label="b" type="f" corresp="#s7:l2">ghestreden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gods kinderen hebben noch Adams <rhyme label="a" type="m">aert</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Och vriendekens <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Het en is noch niet <rhyme label="a" type="m" corresp="#s8:l1">gheopenbaert</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Wat dat wy sullen <rhyme label="b" type="f" corresp="#s8:l2">wesen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Wy zijn hier noch in prijckel <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Somwijlen moet tranen zijn ons <rhyme label="c" type="m" corresp="#s8:l5">broot</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Wy gaen met vruecht met <rhyme label="b" type="f" corresp="#s8:l2">vresen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">So wie daer is in <rhyme label="a" type="m">onghemack</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Die bidde hoort dit <rhyme label="b" type="f">bedieden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Wie goets moets is so Jacobus <rhyme label="a" type="m" corresp="#s9:l1">sprack</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Singhe Psalmen en gheestelijcke <rhyme label="b" type="f" corresp="#s9:l2">lieden</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Malcander te vermanen spreckt Paulus <rhyme label="c" type="m">oock</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Singt speelt den Heer in v hert nae die <rhyme label="c" type="m" corresp="#s9:l5">sproeck</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Dit moet niet ydel <rhyme label="b" type="f" corresp="#s9:l2">geschieden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Och wy zijn onderworpen <rhyme label="a" type="m">al</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Der ydelheyt met <rhyme label="b" type="f">namen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Laet ons vroom wandelen int aertsche <rhyme label="a" type="m" corresp="#s10:l1">dal</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Die sotte maechden wilt <rhyme label="b" type="f" corresp="#s10:l2">ramen</rhyme></l>
        <l id="s10:l5" met="4" type="-+">In haer kampen en was geen oly <rhyme label="c" type="m">siet</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Eer die Bruydegom quam wisten zijt <rhyme label="c" type="m" corresp="#s10:l5">niet</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Hout goede wacht al te <rhyme label="b" type="f" corresp="#s10:l2">samen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Wijn ende sanck het hert <rhyme label="a" type="m">verhuecht</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Die mach men beyde <rhyme label="b" type="f">misbruycken</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Blijtschap in den heyligen geest is <rhyme label="a" type="m" corresp="#s11:l1">duecht</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Waer dese knoppen <rhyme label="b" type="f" corresp="#s11:l2">ontluycken</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Die daer spruyten wt dat edele <rhyme label="c" type="m">saet</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Twelc is ghesaeyt met tranen <rhyme label="c" type="m" corresp="#s11:l5">verstaet</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Die vrucht is soet om te <rhyme label="b" type="f" corresp="#s11:l2">ruycken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En yegelijck acht die nieu <rhyme label="a" type="m">herboort</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Ten leyt in singhen noch in <rhyme label="b" type="f">praten</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Een goede boom brengt goede vruchten <rhyme label="a" type="m" corresp="#s12:l1">voort</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Die onuruchtbaren rancken wilt <rhyme label="b" type="f" corresp="#s12:l2">vaten</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Die wil den vader snijden <rhyme label="c" type="m">af</rhyme></l>
        <l id="s12:l6" met="4" type="-+">Te samen verbranden met dat <rhyme label="c" type="m" corresp="#s12:l5">caf</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Dan sal geen claghen <rhyme label="b" type="f" corresp="#s12:l2">baten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Laet ons toch houden goede <rhyme label="a" type="m">wacht</rhyme></l>
        <l id="s13:l2" met="3" type="-+">In dese quade <rhyme label="b" type="f">daghen</rhyme></l>
        <l id="s13:l3" met="4" type="-+">En staen wel op die schriftuer <rhyme label="a" type="m" corresp="#s13:l1">acht</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Met neersticheyt nae <rhyme label="b" type="f" corresp="#s13:l2">iaghen</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Of wy hier mochten grijpen <rhyme label="c" type="m">dat</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Daer wy in zijn begrepen <rhyme label="c" type="m" corresp="#s13:l5">plat</rhyme></l>
        <l id="s13:l7" met="3" type="-+">Bidt waect wil niet <rhyme label="b" type="f" corresp="#s13:l2">vertraghen</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Ontfangt dit voor een groet van <rhyme label="a" type="m">my</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Nu vrienden weest godt <rhyme label="b" type="f">beuolen</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Met den wenende weent, met den blijen weest <rhyme label="a" type="m" corresp="#s14:l1">blij</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Ghedenckt die onwetende <rhyme label="b" type="f" corresp="#s14:l2">doolen</rhyme></l>
        <l id="s14:l5" met="4" type="-+">In blijschap staet v seluen <rhyme label="c" type="m">acht</rhyme></l>
        <l id="s14:l6" met="4" type="-+">Hebt lust in die wet Godts dach ende <rhyme label="c" type="m" corresp="#s14:l5">nacht</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Wert van gheen Roouers <rhyme label="b" type="f" corresp="#s14:l2">ghestoolen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
