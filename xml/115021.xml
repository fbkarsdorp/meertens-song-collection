  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Mensch, die hooren gaet de <rhyme label="a" type="m">Miss'</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt op d'Offrand' wel <rhyme label="b" type="f">achten</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Leert wat te doen van u dan <rhyme label="a" type="m" corresp="#s1:l1">is</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En wilt daer oock naer <rhyme label="b" type="f" corresp="#s1:l2">trachten</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Opdat ghy de vrucht <rhyme label="c" type="m">ghewint</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Daer de Misse u toe <rhyme label="c" type="m" corresp="#s1:l5">dient</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Leert Godt als Schepper, als den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Als aller eyndt <rhyme label="b" type="f">bekennen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Met dees offrand' hem dan die <rhyme label="a" type="m" corresp="#s2:l1">eer</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Te doen wilt u <rhyme label="b" type="f" corresp="#s2:l2">ghewennen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Dit is't dat den Priester <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Daer ghy Godt me offren <rhyme label="c" type="m" corresp="#s2:l5">moet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer toe die broodt en wijn <rhyme label="a" type="m">verkeert</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In Christum, Godt ter <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Door sijne woorden: soo ons <rhyme label="a" type="m" corresp="#s3:l1">leert</rhyme></l>
        <l id="s3:l4" met="3" type="-+">De rechte Kerck des <rhyme label="b" type="f" corresp="#s3:l2">Heeren</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Dit is de <rhyme label="c" type="m">Godtvruchticheydt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Daer de Miss' u toe <rhyme label="c" type="m" corresp="#s3:l5">beleydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Op dat gh'u onderworpt den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ziel, lichaem, met u <rhyme label="b" type="f">crachten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Doet in de Miss'dat t'elcken <rhyme label="a" type="m" corresp="#s4:l1">keer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Print dit in u <rhyme label="b" type="f" corresp="#s4:l2">ghedachten</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Oock by Godt versoent u <rhyme label="c" type="m">quaedt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Door 't Lam Godts quijt u <rhyme label="c" type="m" corresp="#s4:l5">misdaedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Looft en danckt daer Godt oock <rhyme label="a" type="m">me</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Voor alle sijn <rhyme label="b" type="f">weldaden</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Hem daer door offert oock u <rhyme label="a" type="m" corresp="#s5:l1">be</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Tot alle sijn <rhyme label="b" type="f" corresp="#s5:l2">ghenaden</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Oock Godts doodt voor ooghen <rhyme label="c" type="m">stelt</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">In de Miss' die wordt <rhyme label="c" type="m" corresp="#s5:l5">verbeldt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die dit met een oprecht <rhyme label="a" type="m">ghemoedt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Volbrenghen sal, doen <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Dus sijn gheloof; hem alle <rhyme label="a" type="m" corresp="#s6:l1">goedt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Sal des' offrande <rhyme label="b" type="f" corresp="#s6:l2">gheven</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Die is van te groote <rhyme label="c" type="m">cracht</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">In de ziel die dit <rhyme label="c" type="m" corresp="#s6:l5">betracht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer sy doen als 'nen dooden <rhyme label="a" type="m">dienst</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die hier van niet en <rhyme label="b" type="f">weten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En van de Miss' comt hen kleyn <rhyme label="a" type="m" corresp="#s7:l1">winst</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Die dien dienst <rhyme label="b" type="f" corresp="#s7:l2">vergheten</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Die in 't hert gheleghen <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Maer light nu in <rhyme label="c" type="m" corresp="#s7:l5">duysternis</rhyme>.</l>
      </lg>
    </lg>
