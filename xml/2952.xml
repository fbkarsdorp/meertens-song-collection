    <melody>Les Bouffons</melody>
  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ZYt ghy in angst en <rhyme label="a" type="f">schroomen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">(Door twijffel en <rhyme label="b" type="f">onwisheydt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Of u uw gang niet mis <rhyme label="b" type="f" corresp="#s1:l2">leydt</rhyme>)</l>
        <l id="s1:l4" met="3" type="-+">Om in Godts rijck te <rhyme label="a" type="f" corresp="#s1:l1">komen</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Om niet meer zoo te <rhyme label="a" type="f">beven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Door twijffel-wetigh <rhyme label="b" type="f">weten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zoo bindt u met Deuchdts <rhyme label="b" type="f" corresp="#s2:l2">keten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Aen Godt en 't eeuwigh <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">'t Geloof, dat in 't gemoedt <rhyme label="a" type="f">is</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Daer moet zich deuchdt by <rhyme label="b" type="f">paren</rhyme></l>
        <l id="s3:l3" met="3" type="-+">En Lust om voort te <rhyme label="b" type="f" corresp="#s3:l2">varen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In al wat recht en goedt <rhyme label="a" type="f" corresp="#s3:l1">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">By Deuchdt-lust eyscht goê <rhyme label="a" type="f">Kennis</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Om, stuck voor stuck, Deuchdts <rhyme label="b" type="f">wegen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Te zien en 't <rhyme label="b" type="f" corresp="#s4:l2">overwegen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Tot vaste Deuchdts <rhyme label="a" type="f" corresp="#s4:l1">gewennis</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De Kennis magh niet <rhyme label="a" type="f">ledigh</rhyme></l>
        <l id="s5:l2" met="3" type="-+">In 's menschen herssen <rhyme label="b" type="f">leggen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Of in een ydel <rhyme label="b" type="f" corresp="#s5:l2">zeggen</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Goê kennis maeckt <rhyme label="a" type="f" corresp="#s5:l1">goedt-zedigh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Zy moet de Maet doen <rhyme label="a" type="f">ramen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Om nooyt in geene <rhyme label="b" type="f">wercken</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Te treden uyt de <rhyme label="b" type="f" corresp="#s6:l2">Percken</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Van 't Christelijck <rhyme label="a" type="f" corresp="#s6:l1">betamen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hier moet zy 't niet by <rhyme label="a" type="f">laten</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Maer zonder morrigh <rhyme label="b" type="f">klagen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Vervolgh en kruys doen <rhyme label="b" type="f" corresp="#s7:l2">dragen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En stellen 't hert <rhyme label="a" type="f" corresp="#s7:l1">gelaten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">'t Gelaten hert, niet <rhyme label="a" type="f">doffigh</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">(Zoo weynigh als <rhyme label="b" type="f">ne'erslachtigh</rhyme>)</l>
        <l id="s8:l3" met="3" type="-+">Moet, vierigh en <rhyme label="b" type="f" corresp="#s8:l2">aendachtigh</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">In Godt-plight nooyt zijn <rhyme label="a" type="f" corresp="#s8:l1">sloffigh</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">'t Hert in Godt <rhyme label="a" type="f">opgetogen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Moet Broederlijcke <rhyme label="b" type="f">minne</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Niet sluyten uyt de <rhyme label="b" type="f" corresp="#s9:l2">zinnen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Maer staêgh daer na doen <rhyme label="a" type="f" corresp="#s9:l1">poogen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">'t Hert Christelijck <rhyme label="a" type="f">Broeder-lievigh</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Moet in dat perck niet <rhyme label="b" type="f">stuyten</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Maer liefd' aen Allen <rhyme label="b" type="f" corresp="#s10:l2">uyten</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">En wezen elck <rhyme label="a" type="f" corresp="#s10:l1">gerievigh</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Zijn deze <rhyme label="a" type="f">eygenschappen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">In u geplaetst, o <rhyme label="b" type="f">mensche</rhyme>:</l>
        <l id="s11:l3" met="3" type="-+">Wat hoeft ghy meer te <rhyme label="b" type="f" corresp="#s11:l2">wenschen</rhyme>?</l>
        <l id="s11:l4" met="3" type="-+">Ghy zijt op 's Hemels <rhyme label="a" type="f" corresp="#s11:l1">trappen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wordt gh' hier van leêgh <rhyme label="a" type="f">bevonden</rhyme>:</l>
        <l id="s12:l2" met="3" type="-+">Zoo zwiert ghy als een <rhyme label="b" type="f">blinde</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Die stadt noch padt kan <rhyme label="b" type="f" corresp="#s12:l2">vinden</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Nooyt reyn van d'oude <rhyme label="a" type="f" corresp="#s12:l1">zonden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
