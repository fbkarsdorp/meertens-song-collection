  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIe zie’k hier <rhyme label="a" type="f">Ape-spelen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Nae d’oude Roomsche <rhyme label="b" type="m">keur</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met witte, rode, <rhyme label="a" type="f" corresp="#s1:l1">geele</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En alderley <rhyme label="b" type="m" corresp="#s1:l2">coleur</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">Wat ding beduid// dit stil <rhyme label="c" type="m">geluid</rhyme>//</l>
        <l id="s1:l6" met="3" type="-+">Dit zwigen, en dit <rhyme label="d" type="f">spreken</rhyme>?</l>
        <l id="s1:l7" met="4" type="-+">‘ Js naer ik gis// de Paepse <rhyme label="e" type="m">Mis</rhyme>//</l>
        <l id="s1:l8" met="3" type="-+">Maer ’t schijnen zotter <rhyme label="d" type="f" corresp="#s1:l6">treken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">In dezer zelver <rhyme label="a" type="f">vougen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wel eer, met <rhyme label="b" type="m">Luciaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Heydenen <rhyme label="a" type="f" corresp="#s2:l1">belougen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Den ouden <rhyme label="b" type="m" corresp="#s2:l2">Christiaen</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Eerloze mond// uw’ eigen <rhyme label="c" type="m">grond</rhyme>//</l>
        <l id="s2:l6" met="3" type="-+">Bestraft u wel met <rhyme label="d" type="f">reden</rhyme>.</l>
        <l id="s2:l7" met="4" type="-+">Ter wijl ghy scheld// en daer mee <rhyme label="e" type="m">meld</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Vw’ <rhyme label="d" type="f" corresp="#s2:l6">onverstandigheden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gaet heen bespot met <rhyme label="a" type="f">eenen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">’t Gewaed van Godes <rhyme label="b" type="m">zoon</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Wanneerjem ziet <rhyme label="a" type="f" corresp="#s3:l1">verschenen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met een gekruinde <rhyme label="b" type="m" corresp="#s3:l2">kroon</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Voor onze nood// nu wit nu <rhyme label="c" type="m">rood</rhyme>//</l>
        <l id="s3:l6" met="3" type="-+">Nu recht, nu krom van <rhyme label="d" type="f">leden</rhyme>.</l>
        <l id="s3:l7" met="4" type="-+">’t Betraende oog// nu laeg, nu <rhyme label="e" type="m">hoog</rhyme>//</l>
        <l id="s3:l8" met="3" type="-+">Nu stil, nu luy van <rhyme label="d" type="f" corresp="#s3:l6">reden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Want naedien ons het <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ons Saligmakers, <rhyme label="b" type="m">is</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Bevolen inde <rhyme label="a" type="f" corresp="#s4:l1">tijden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van zijn bedienden <rhyme label="b" type="m" corresp="#s4:l2">Disch</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Zoo vougt en past// op deze <rhyme label="c" type="m">last</rhyme>//</l>
        <l id="s4:l6" met="3" type="-+">De dankbaerheyd der <rhyme label="d" type="f">Kerken</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Met grote re’en// haer waen, haer <rhyme label="e" type="m">kle’en</rhyme>//</l>
        <l id="s4:l8" met="3" type="-+">Haer woorden, en haer <rhyme label="d" type="f" corresp="#s4:l6">werken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ze stelt ons ’t eerst <rhyme label="a" type="f">exempel</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Voor oogen kort en <rhyme label="b" type="m">claer</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Calvarien, is den <rhyme label="a" type="f" corresp="#s5:l1">Tempel</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Het dwarshout, den <rhyme label="b" type="m" corresp="#s5:l2">Autaer</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Voor zon en maen// de kaersen <rhyme label="c" type="m">staen</rhyme>//</l>
        <l id="s5:l6" met="3" type="-+">De rest is nae de <rhyme label="d" type="f">zeden</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Die Iesus dee// of sprak, of <rhyme label="e" type="m">lee</rhyme>//</l>
        <l id="s5:l8" met="3" type="-+">In ’t maken van zijn <rhyme label="d" type="f" corresp="#s5:l6">vrede</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Leerdt dan uw’ zinnen <rhyme label="a" type="f">buigen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En wacht voordaen te <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Als spinnen, die daer <rhyme label="a" type="f" corresp="#s6:l1">zuigen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Uit Rosen haer <rhyme label="b" type="m" corresp="#s6:l2">fenijn</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Noch scheld, noch schend// eer dat ghy <rhyme label="c" type="m">kendt</rhyme>//</l>
        <l id="s6:l6" met="3" type="-+">De waerom vande <rhyme label="d" type="f">zaken</rhyme>.</l>
        <l id="s6:l7" met="4" type="-+">Want ’t is een zot, die zonder <rhyme label="e" type="m">slot</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Van re’en, yet komt te <rhyme label="d" type="f" corresp="#s6:l6">laken</rhyme>.</l>
      </lg>
    </lg>
  </text>
