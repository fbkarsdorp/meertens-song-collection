  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ontwaeckt ontwaeckt <rhyme label="a" type="m">subijt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Al vanden slaep der <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want tis nu den <rhyme label="a" type="m" corresp="#s1:l1">tijt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Soo de schrifuere <rhyme label="c" type="m">bediet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soo Paulus gaet <rhyme label="b" type="f" corresp="#s1:l2">vermonden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dus waeckt tot allen <rhyme label="b" type="f" corresp="#s1:l2">stonden</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Op dat ghy <rhyme label="c" type="m" corresp="#s1:l4">niet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En compt al int <rhyme label="c" type="m" corresp="#s1:l4">verdriet</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Met die daer <rhyme label="c" type="m" corresp="#s1:l4">siet</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Slaepen in sonden <rhyme label="d" type="m">blint</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Maer staet met die cantijcke <rhyme label="e" type="m">bruyt</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">Van v bedde der sonden <rhyme label="e" type="m" corresp="#s1:l11">uyt</rhyme>,</l>
        <l id="s1:l13" met="3" type="-+">En soeckt dit wel <rhyme label="d" type="m" corresp="#s1:l10">versint</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">Die u siele <rhyme label="d" type="m" corresp="#s1:l10">bemint</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dat is Christus <rhyme label="a" type="m">alleyn</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die quam al wt den <rhyme label="b" type="f">troone</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wt liefden <rhyme label="a" type="m" corresp="#s2:l1">reyn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Om ons zijt dies wel <rhyme label="c" type="m">vroet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Te verlossen <rhyme label="b" type="f" corresp="#s2:l2">ydoone</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En ons te wasschen <rhyme label="b" type="f" corresp="#s2:l2">schoone</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">[...]et zijn <rhyme label="c" type="m" corresp="#s2:l4">bloet</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">So ons de schrift condt <rhyme label="c" type="m" corresp="#s2:l4">doet</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Op dat wy metter <rhyme label="c" type="m" corresp="#s2:l4">spoet</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Soude wesen <rhyme label="d" type="m">devijn</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Neerstich so Paulus gaet <rhyme label="e" type="m">verbreen</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">Tot goede wercken alle <rhyme label="e" type="m" corresp="#s2:l11">gemeen</rhyme>,</l>
        <l id="s2:l13" met="3" type="-+">Op dat onsen vader <rhyme label="d" type="m" corresp="#s2:l10">fijn</rhyme></l>
        <l id="s2:l14" met="3" type="-+">Mochte gepresen <rhyme label="d" type="m" corresp="#s2:l10">zijn</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer dien Christus <rhyme label="a" type="m">mynoot</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sulcke liefde heeft <rhyme label="b" type="f">gedragen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Tot ons al inde <rhyme label="a" type="m" corresp="#s3:l1">doot</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Also moeten oock <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Naer Johannis <rhyme label="b" type="f" corresp="#s3:l2">gewagen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hem lief hebben tallen <rhyme label="b" type="f" corresp="#s3:l2">dagen</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">En hem verstaet wel <rhyme label="c" type="m" corresp="#s3:l4">my</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Volgen wt liefden <rhyme label="c" type="m" corresp="#s3:l4">vry</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Gelick als <rhyme label="c" type="m" corresp="#s3:l4">hy</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Heeft geseyt met woorden <rhyme label="d" type="m">claer</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Wilt my yemant naer volgen <rhyme label="e" type="m">hier</rhyme>,</l>
        <l id="s3:l12" met="4" type="-+">Die neemt zijn cruys op met <rhyme label="e" type="m" corresp="#s3:l11">dangier</rhyme>,</l>
        <l id="s3:l13" met="3" type="-+">En moet hem selven <rhyme label="d" type="m" corresp="#s3:l10">voorwaer</rhyme>,</l>
        <l id="s3:l14" met="3" type="-+">Versaeken tis <rhyme label="d" type="m" corresp="#s3:l10">openbaer</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dat is my wel <rhyme label="a" type="m">verstaet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ghy moet u <rhyme label="b" type="f">overgeven</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Den ouden Adam <rhyme label="a" type="m" corresp="#s4:l1">quaet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dooden al door den <rhyme label="c" type="m">geest</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">V selven niet meer <rhyme label="b" type="f" corresp="#s4:l2">leven</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Gelick het staet <rhyme label="b" type="f" corresp="#s4:l2">geschreven</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Maet wt trecken alder <rhyme label="c" type="m" corresp="#s4:l4">eerst</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Den ouden rock <rhyme label="c" type="m" corresp="#s4:l4">onbevreest</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">In dit <rhyme label="c" type="m" corresp="#s4:l4">fooreest</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">En aendoen dit <rhyme label="d" type="m">aenhoort</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Den nieuwen mensche <rhyme label="e" type="m">onbevleckt</rhyme>,</l>
        <l id="s4:l12" met="4" type="-+">Gelick als Paulus u <rhyme label="e" type="m" corresp="#s4:l11">ondeckt</rhyme>,</l>
        <l id="s4:l13" met="3" type="-+">En gaet naer s'Heeren <rhyme label="d" type="m" corresp="#s4:l10">woort</rhyme>,</l>
        <l id="s4:l14" met="3" type="-+">In een nieu leuen <rhyme label="d" type="m" corresp="#s4:l10">voort</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Op dat ghy tallen <rhyme label="a" type="m">saysoen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Mocht verblijden met de <rhyme label="b" type="f">schaere</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Op den berch van <rhyme label="a" type="m" corresp="#s5:l1">Syoen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gelijck Esdras heeft sien <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dese hadde <rhyme label="b" type="f" corresp="#s5:l2">allegaere</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">So de Engel gaet <rhyme label="b" type="f" corresp="#s5:l2">verclaere</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Tegen Esdras <rhyme label="c" type="m" corresp="#s5:l4">saen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Den ouden rock <rhyme label="c" type="m" corresp="#s5:l4">afgedaen</rhyme>,</l>
        <l id="s5:l9" met="2" type="-+">Daerom hebben sy <rhyme label="c" type="m" corresp="#s5:l4">ontfaen</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Een croone seer <rhyme label="d" type="m">triumphant</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Dus werpt doch wech dat oude <rhyme label="e" type="m">cleet</rhyme>,</l>
        <l id="s5:l12" met="4" type="-+">Met Bartholomeus vaet dit <rhyme label="e" type="m" corresp="#s5:l11">bescheet</rhyme>,</l>
        <l id="s5:l13" met="3" type="-+">En volcht Christus <rhyme label="d" type="m" corresp="#s5:l10">playsant</rhyme>,</l>
        <l id="s5:l14" met="3" type="-+">Naer het beloofte <rhyme label="d" type="m" corresp="#s5:l10">lant</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Desen berch wilt <rhyme label="a" type="m">verstaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Is godts heylighe <rhyme label="b" type="f">gemeente</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Soo Paulus doet <rhyme label="a" type="m" corresp="#s6:l1">vermaen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En gods tempel niet te <rhyme label="c" type="m">min</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Sy is van reyn <rhyme label="b" type="f" corresp="#s6:l2">gesteente</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En van Christus <rhyme label="b" type="f" corresp="#s6:l2">gebeente</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Verstaet den <rhyme label="c" type="m" corresp="#s6:l4">sin</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Wilt ghy daer comen <rhyme label="c" type="m" corresp="#s6:l4">in</rhyme>,</l>
        <l id="s6:l9" met="2" type="-+">Ghy moet ick seker <rhyme label="c" type="m" corresp="#s6:l4">bin</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Soo de schriftuere <rhyme label="d" type="m">verclaert</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">V besnijden seer <rhyme label="e" type="m">excelent</rhyme>,</l>
        <l id="s6:l12" met="4" type="-+">Op dat ghy mocht wesen <rhyme label="e" type="m" corresp="#s6:l11">present</rhyme>,</l>
        <l id="s6:l13" met="3" type="-+">Een levenden steen <rhyme label="d" type="m" corresp="#s6:l10">vermaert</rhyme>,</l>
        <l id="s6:l14" met="3" type="-+">Aen den tempel <rhyme label="d" type="m" corresp="#s6:l10">bewaert</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dit is verstaet den <rhyme label="a" type="m">grondt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Gods tabernakel <rhyme label="b" type="f">gepresen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wy daer in teeniger <rhyme label="a" type="m" corresp="#s7:l1">stont</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wil woonen naer schrift <rhyme label="c" type="m">aduys</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die moet af also wy <rhyme label="b" type="f" corresp="#s7:l2">leesen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Ghelick het staet <rhyme label="b" type="f" corresp="#s7:l2">bewesen</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Sonder smette <rhyme label="c" type="m" corresp="#s7:l4">propijs</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Commen in dit <rhyme label="c" type="m" corresp="#s7:l4">paradijs</rhyme>,</l>
        <l id="s7:l9" met="2" type="-+">Met sinnen <rhyme label="c" type="m" corresp="#s7:l4">wijs</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Dus en vergeet doch <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s7:l11" met="4" type="+-">Als ghy compt in dees <rhyme label="e" type="m">feest</rhyme>,</l>
        <l id="s7:l12" met="4" type="-+">V bruyloofts cleet al naer den <rhyme label="e" type="m" corresp="#s7:l11">geest</rhyme>,</l>
        <l id="s7:l13" met="3" type="-+">Op dat ghy int <rhyme label="d" type="m" corresp="#s7:l10">verdriet</rhyme>,</l>
        <l id="s7:l14" met="3" type="-+">En compt soot is <rhyme label="d" type="m" corresp="#s7:l10">geschiet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maer dat ghy in dit <rhyme label="a" type="m">pleyn</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Mocht woonen in <rhyme label="b" type="f">vrede</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En oock wesen <rhyme label="a" type="m" corresp="#s8:l1">certeyn</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Als ghy treet den wech <rhyme label="c" type="m">smal</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Een borger van de <rhyme label="b" type="f" corresp="#s8:l2">stede</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En oock een schaepken <rhyme label="b" type="f" corresp="#s8:l2">mede</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Van het <rhyme label="c" type="m" corresp="#s8:l4">schaepstal</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Hier in dit aertsche <rhyme label="c" type="m" corresp="#s8:l4">dal</rhyme>,</l>
        <l id="s8:l9" met="2" type="-+">Verstaet dit <rhyme label="c" type="m" corresp="#s8:l4">al</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Dat ghy naer mijn <rhyme label="d" type="m">bevroen</rhyme>,</l>
        <l id="s8:l11" met="4" type="+-">Mochte wesen wel hier op <rhyme label="e" type="m">let</rhyme>,</l>
        <l id="s8:l12" met="4" type="-+">Een ledeken aen Christus <rhyme label="e" type="m" corresp="#s8:l11">net</rhyme>,</l>
        <l id="s8:l13" met="3" type="-+">En oock een rancxken <rhyme label="d" type="m" corresp="#s8:l10">groen</rhyme>,</l>
        <l id="s8:l14" met="3" type="-+">Dat vloeyt tallen <rhyme label="d" type="m" corresp="#s8:l10">saysoen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Oorlof dus voor een <rhyme label="a" type="m">slot</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Hier uyt so wijl ick <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Ick wensche u van <rhyme label="a" type="m" corresp="#s9:l1">godt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dat dit al mach <rhyme label="c" type="m">geschien</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Dat hy u wil <rhyme label="b" type="f" corresp="#s9:l2">geleyden</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Op die oprechte <rhyme label="b" type="f" corresp="#s9:l2">Weyden</rhyme>,</l>
        <l id="s9:l7" met="2" type="-+">Tot allen <rhyme label="c" type="m" corresp="#s9:l4">tien</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Op dat ghy mocht <rhyme label="c" type="m" corresp="#s9:l4">verblien</rhyme>,</l>
        <l id="s9:l9" met="2" type="-+">Wilt dit <rhyme label="c" type="m" corresp="#s9:l4">insien</rhyme>,</l>
        <l id="s9:l10" met="3" type="-+">Naer Petrus <rhyme label="d" type="m">vermaen</rhyme>,</l>
        <l id="s9:l11" met="4" type="+-">Hier naer al inder <rhyme label="e" type="m">eewicheyt</rhyme>,</l>
        <l id="s9:l12" met="4" type="-+">Met Godts kinders vaet dit <rhyme label="e" type="m" corresp="#s9:l11">bescheyt</rhyme>,</l>
        <l id="s9:l13" met="3" type="-+">Wilt dit in dancke <rhyme label="d" type="m" corresp="#s9:l10">ontfaen</rhyme>,</l>
        <l id="s9:l14" met="3" type="-+">V begheerte is <rhyme label="d" type="m" corresp="#s9:l10">voldaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
