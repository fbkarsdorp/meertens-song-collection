    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">Pover Soldaet quam na den Krijgh <rhyme label="a" type="f">getreden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hy quam te huys naeckt ende <rhyme label="b" type="m">bloot</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Pover Soldaet was heel <rhyme label="b" type="m" corresp="#s1:l2">beroyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Pover Soldaet is na 's Weerts huys <rhyme label="a" type="f">gegangen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Weerdinne hebt ghy koele Wijn <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Die ick noch 't avont drincken <rhyme label="b" type="m" corresp="#s2:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Pover Soldaet die is in huys <rhyme label="a" type="f">getreden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">De weerdinne sprack heel <rhyme label="b" type="m">ontstelt</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Mijn Wijn is goet hebt ghy maer <rhyme label="b" type="m" corresp="#s3:l2">gelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Pover Soldaet socht in sijn <rhyme label="a" type="f">tassche</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Hy vont geen Silver of root <rhyme label="b" type="m">Gout</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Pover Soldaet was heel <rhyme label="b" type="m" corresp="#s4:l2">benout</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="+-">Pover Soldaet gink na de Jode <rhyme label="a" type="f">strate</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Hy versetten sijn Mantel en sijnen <rhyme label="b" type="m">Stok</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Daer toe Kousen en sijn <rhyme label="b" type="m" corresp="#s5:l2">Pals-rock</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="+-">Pover Soldaet is na huys <rhyme label="a" type="f">gegangen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Weerdinne hebt ghy koele <rhyme label="b" type="m">Wijn</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Wis heb ik gelt in <rhyme label="b" type="m" corresp="#s6:l2">sackelijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="+-">De goede Weerdin sette hem aen de <rhyme label="a" type="f">Tafel</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">En hy hief op een Lied en <rhyme label="b" type="m">sangh</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">De Weerdin sach doen soo <rhyme label="b" type="m" corresp="#s7:l2">bangh</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="+-">Weerdin waerom siet ghy soo <rhyme label="a" type="f">treurig</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Jck ken u wel en sie u <rhyme label="b" type="m">an</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Jck ben u getroude <rhyme label="b" type="m" corresp="#s8:l2">man</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="+-">Lest-mael als ick was na den Krijgh <rhyme label="a" type="f">getreden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Liet ick u t'huys met een kleyn <rhyme label="b" type="m">kint</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Daer ick my nu schaem, drie weer <rhyme label="b" type="m" corresp="#s9:l2">vint</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="5" type="+-">Lest-mael als ghy waert na den Krijg <rhyme label="a" type="f">getreden</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Doen had icker een, en ick draegder <rhyme label="b" type="m">twee</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Pover Soldaet is dat geen <rhyme label="b" type="m" corresp="#s10:l2">drie</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="5" type="+-">De twee die ghy draegt als een snoo <rhyme label="a" type="f">hoer</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Die en hebt ghy van my niet <rhyme label="b" type="m">ontfaen</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Nu segt my wie 't dan oock heeft <rhyme label="b" type="m" corresp="#s11:l2">gedaen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="5" type="+-">Pover Soldaet als gy na krijg ging <rhyme label="a" type="f">lopen</rhyme></l>
        <l id="s12:l2" met="4" type="+-">En liet my hier dus droevigh <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Doen was ick voor de gasten <rhyme label="b" type="m" corresp="#s12:l2">gemeen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="5" type="+-">Pover Soldaet was toornig <rhyme label="a" type="f">uytsinnig</rhyme></l>
        <l id="s13:l2" met="4" type="+-">En liep al na de Krijgh met <rhyme label="b" type="m">eer</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Pover Soldaet en quam noyt <rhyme label="b" type="m" corresp="#s13:l2">weer</rhyme>.</l>
      </lg>
    </lg>
  </text>
