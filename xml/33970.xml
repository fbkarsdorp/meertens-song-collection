    <melody>O zalig heilig Bethlehem</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IN 's oordeels-dagh het <rhyme label="a" type="m">Heemel-rijk</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Word vergeleeken by tien <rhyme label="b" type="f">Maeghden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die welk den Bruygom al <rhyme label="a" type="m" corresp="#s1:l1">gelijk</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Waer-namen, ende Lampen <rhyme label="b" type="f" corresp="#s1:l2">draeghden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer vijf van deese waren <rhyme label="a" type="m">mal</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">De welke om geen Oly <rhyme label="b" type="f">doghten</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Vijf waren wijs, die met <rhyme label="a" type="m" corresp="#s2:l1">beval</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In hare Lampen Oly <rhyme label="b" type="f" corresp="#s2:l2">kochten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den Bruygom wat te langh <rhyme label="a" type="m">verbeydt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dus worden 's al tot slaep <rhyme label="b" type="f">beweegen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Te midder-naght wordt haer <rhyme label="a" type="m" corresp="#s3:l1">geseydt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Den Bruygom komt, dus gaet hem <rhyme label="b" type="f" corresp="#s3:l2">teegen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dus sijn de Maeghden <rhyme label="a" type="m">op-gestaen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Haer Lampen gingen sy <rhyme label="b" type="f">bereyden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De dwasen sagen d'haer <rhyme label="a" type="m" corresp="#s4:l1">uyt-gaen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Daerom sy tot de wijsen <rhyme label="b" type="f" corresp="#s4:l2">seyden</rhyme>:</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ons wat van uwe Oly <rhyme label="a" type="m">geeft</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ons Lampen branden niet <rhyme label="b" type="f">bequame</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">De wijsen antwoorden <rhyme label="a" type="m" corresp="#s5:l1">beleeft</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo moght ontbreeken al te <rhyme label="b" type="f" corresp="#s5:l2">same</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gaet liever daer die is te <rhyme label="a" type="m">koop</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En koopt voor u-lie <rhyme label="b" type="f">overvloedigh</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Terwijl sy waren op de <rhyme label="a" type="m" corresp="#s6:l1">loop</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Soo quam den Bruydegom aen <rhyme label="b" type="f" corresp="#s6:l2">spoedigh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die welke waren wel <rhyme label="a" type="m">bereydt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Sijn met den Bruygom <rhyme label="b" type="f">in-getreeden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Ter Bruyloft; men heeft niet <rhyme label="a" type="m" corresp="#s7:l1">verbeydt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">De deur gingh toe met <rhyme label="b" type="f" corresp="#s7:l2">haestigheeden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ten lesten koomen daer ook <rhyme label="a" type="m">veur</rhyme></l>
        <l id="s8:l2" met="4" type="-+">De dwase Maeghden, ende <rhyme label="b" type="f">seyde</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">O Heer, doet voor ons op de <rhyme label="a" type="m" corresp="#s8:l1">deur</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Maer sy ontfangen sleght <rhyme label="b" type="f" corresp="#s8:l2">bescheyde</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Voorwaer gy sijt my <rhyme label="a" type="m">onbekent</rhyme>.</l>
        <l id="s9:l2" met="4" type="-+">Daerom wilt altijdt neerstigh <rhyme label="b" type="f">waken</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Want gy niet weet wanneer <rhyme label="a" type="m" corresp="#s9:l1">ontrent</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Dat deese tijt, of uer sal <rhyme label="b" type="f" corresp="#s9:l2">naken</rhyme>.</l>
      </lg>
    </lg>
  </text>
