  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Voorsinich en wijsen <rhyme label="a" type="m">Godt</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">Eeuwi ch tot alle <rhyme label="b" type="f">stonden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">In my is oock het <rhyme label="a" type="m" corresp="#s1:l1">lot</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van onwijsheydt <rhyme label="b" type="f" corresp="#s1:l2">bevonden</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ick ben ghelijck een <rhyme label="c" type="m">kindt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Datmen onwijs <rhyme label="c" type="m" corresp="#s1:l5">bevindt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De onwijsheyt die my <rhyme label="a" type="m">quelt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat syn al mijn <rhyme label="b" type="f">misdaeden</rhyme></l>
        <l id="s2:l3" met="3" type="-+">K'heb my daer in <rhyme label="a" type="m" corresp="#s2:l1">ghestelt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Door t'volghen van quae <rhyme label="b" type="f" corresp="#s2:l2">raeden</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hoe'ck daer in ben <rhyme label="c" type="m">ghewent</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Is u seer wel <rhyme label="c" type="m" corresp="#s2:l5">bekent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ist niet een onwijsheydt <rhyme label="a" type="m">snoodt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Da'ck naer u niet en <rhyme label="b" type="f">hoore</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Daer ick uyt reden <rhyme label="a" type="m" corresp="#s3:l1">groot</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Te doene sulcx <rhyme label="b" type="f" corresp="#s3:l2">behoore</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ghy wort met lof <rhyme label="c" type="m">vereert</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Dat ghy de waerheydt <rhyme label="c" type="m" corresp="#s3:l5">leert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy leert my hier over <rhyme label="a" type="m">milt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Da'ck d'ydelheydt moet <rhyme label="b" type="f">laeten</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Anders heb ick <rhyme label="a" type="m" corresp="#s4:l1">ghewilt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">K'heb die willen <rhyme label="b" type="f" corresp="#s4:l2">aenvaeten</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">K'heb dickmaels die seer <rhyme label="c" type="m">gauw</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Laeten vlien wt mijn <rhyme label="c" type="m" corresp="#s4:l5">mauw</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ick weet dat ick moet syn <rhyme label="a" type="m">snel</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Om naer de deught te <rhyme label="b" type="f">loopen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En nochtans even <rhyme label="a" type="m" corresp="#s5:l1">wel</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Doe ick letsels aen my <rhyme label="b" type="f" corresp="#s5:l2">knoopen</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Is dan mijn werck niet <rhyme label="c" type="m">slecht</rhyme>?</l>
        <l id="s5:l6" met="3" type="-+">Seker t'strijdt teghen <rhyme label="c" type="m" corresp="#s5:l5">recht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy seght dat u sock is <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En u pack licht om <rhyme label="b" type="f">draeghen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Nochtans neempt mijn <rhyme label="a" type="m" corresp="#s6:l1">ghemoet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In meerder pack <rhyme label="b" type="f" corresp="#s6:l2">behaeghen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Het dinckt hem licht en <rhyme label="c" type="m">fris</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Daer't naer gheneghen <rhyme label="c" type="m" corresp="#s6:l5">is</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Orlof die de wijsheyt <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt mijn onwijsheyt <rhyme label="b" type="f">weeren</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Leert my sonder <rhyme label="a" type="m" corresp="#s7:l1">respijt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Volbringhen u <rhyme label="b" type="f" corresp="#s7:l2">begheeren</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Op dat ick <rhyme label="c" type="m">onbelae</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Eens in u rijck magh <rhyme label="c" type="m" corresp="#s7:l5">gaen</rhyme>.</l>
      </lg>
    </lg>
