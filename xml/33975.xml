    <melody>Waar blijft gij nu o zondaar groot</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VOor Paeschens hooge <rhyme label="a" type="m">Feestes-dagh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Jesus sijn uer aenkoomen <rhyme label="a" type="m" corresp="#s1:l1">sagh</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Om van de Weerelt na sijn <rhyme label="b" type="f">Vader</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Te reysen, dien hy hadt <rhyme label="c" type="m">gesindt</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Op deese Weereldt, heeft s' <rhyme label="c" type="m" corresp="#s1:l4">bemindt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Tot het leste eynd' <rhyme label="b" type="f" corresp="#s1:l3">allegader</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Op 't Avondtmael, als <rhyme label="a" type="m">Sathanas</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Hadt in het harte van <rhyme label="a" type="m" corresp="#s2:l1">Judas</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Al in-gestookt hem te <rhyme label="b" type="f">verraden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En hy wist dat in sijn <rhyme label="c" type="m">gewelt</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Sijn Vader alles hadt <rhyme label="c" type="m" corresp="#s2:l4">gestelt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En tot Godt waren weer sijn <rhyme label="b" type="f" corresp="#s2:l3">paden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy stondt op van het <rhyme label="a" type="m">Avondtmael</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Leyd' neer sijn kleedt, en nam een <rhyme label="a" type="m" corresp="#s3:l1">dwael</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hy deed' hem om, en wouw' <rhyme label="b" type="f">beginnen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Sijn Jongers voeten wasschen <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Met water, dat hy hadt <rhyme label="c" type="m" corresp="#s3:l4">gedaen</rhyme></l>
        <l id="s3:l6" met="4" type="-+">In het becken, droogen met 't <rhyme label="b" type="f" corresp="#s3:l3">linnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dus quam hy Simon Petrus <rhyme label="a" type="m">by</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">En Petrus seyde, Heer, soudt <rhyme label="a" type="m" corresp="#s4:l1">gy</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Mijn voeten wasschen? 'k sal 't niet <rhyme label="b" type="f">lijden</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Maer Iesus seyde, gy 't nogh <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Verstaet, dat gy mijn nu doen <rhyme label="c" type="m" corresp="#s4:l4">siet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Maer gy sult 't verstaen nae dees <rhyme label="b" type="f" corresp="#s4:l3">tijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer Petrus seyde, <rhyme label="a" type="m">nimmermeer</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Sult gy mijn voeten wasschen <rhyme label="a" type="m" corresp="#s5:l1">Heer</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Maer Iesus seyde, gy geen <rhyme label="b" type="f">deele</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Met mijn sult hebben, so ik <rhyme label="c" type="m">u</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">O Petre; niet en wassche <rhyme label="c" type="m" corresp="#s5:l4">nu</rhyme>.</l>
        <l id="s5:l6" met="4" type="-+">Dus seyt Petrus, Heer liever <rhyme label="b" type="f" corresp="#s5:l3">heele</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mijn voeten, en mijn handen <rhyme label="a" type="m">gy</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ja ook mijn hooft wilt wasschen <rhyme label="a" type="m" corresp="#s6:l1">vry</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Wie is gewasschen nae <rhyme label="b" type="f">betamen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Seydt Iesus, heeft sijn voeten <rhyme label="c" type="m">maer</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Te wasschen, want hy is heel <rhyme label="c" type="m" corresp="#s6:l4">klaer</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Gy-lie klaer sijt: maer niet al <rhyme label="b" type="f" corresp="#s6:l3">t'samen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Want hy wist heel wel wie het <rhyme label="a" type="m">was</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Die welk hem souw verraden <rhyme label="a" type="m" corresp="#s7:l1">ras</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dus seyd hy, gy niet al sijt <rhyme label="b" type="f">klare</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Na dat hy hare voeten <rhyme label="c" type="m">dan</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Gewasschen had, deed hy weer <rhyme label="c" type="m" corresp="#s7:l4">an</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Sijn kleed, en sat weer neer by <rhyme label="b" type="f" corresp="#s7:l3">hare</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nu sprak hy haer aldus weer <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Gy weet wat ik u heb <rhyme label="a" type="m" corresp="#s8:l1">gedaen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Gy heet mijn Meester ende <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Gy seght heel wel; maer soo ik <rhyme label="c" type="m">u</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Gewasschen heb de voeten <rhyme label="c" type="m" corresp="#s8:l4">nu</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Moet elkander gy ook soo <rhyme label="b" type="f" corresp="#s8:l3">eere</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Gelijk ik u heb <rhyme label="a" type="m">voor-gedaen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Soo moet gy-lieden doen <rhyme label="a" type="m" corresp="#s9:l1">voortaen</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Een knecht is niet meer als sijn <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">d'Apostel niet meer als die <rhyme label="c" type="m">sendt</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Gy Saligh sijn sult als gy <rhyme label="c" type="m" corresp="#s9:l4">kent</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Dees les, en u daer nae <rhyme label="b" type="f" corresp="#s9:l3">regeere</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ik dit niet segge van u <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Want ik wel weete het <rhyme label="a" type="m" corresp="#s10:l1">getal</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Der geener die ik heb <rhyme label="b" type="f">verkooren</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">Maer dat de Schrift vervult magh <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Die welk mijn broode eet met <rhyme label="c" type="m" corresp="#s10:l4">mijn</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Die sal mijn stooten met sijn <rhyme label="b" type="f" corresp="#s10:l3">spooren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ik segh het u al eer 't <rhyme label="a" type="m">geschiet</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Op dat als gy 't geschieden <rhyme label="a" type="m" corresp="#s11:l1">siet</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Gy-lieden in mijn mooght <rhyme label="b" type="f">gelooven</rhyme>.</l>
        <l id="s11:l4" met="4" type="-+">Soo wie ontfanght de welke <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Van mijn gesonden, krijght ook <rhyme label="c" type="m" corresp="#s11:l4">mijn</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">En die welke mijn sendt van <rhyme label="b" type="f" corresp="#s11:l3">booven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Gy geeft ons soo gesonde <rhyme label="a" type="m">leer</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">O goede Meester ende <rhyme label="a" type="m" corresp="#s12:l1">Heer</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Ogh of wy die wel <rhyme label="b" type="f">onderhouden</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">En sochten soo <rhyme label="c" type="m">elkanderen</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Te dienen, en te <rhyme label="c" type="m" corresp="#s12:l4">hellepen</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Wy geluk-saligh weesen <rhyme label="b" type="f" corresp="#s12:l3">souden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
