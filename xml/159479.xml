    <tags/>
    <melody>Schoon lief wil mij troost geven</melody>
  <author>Augustinus van Teylingen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hoe wel soo moet hem <rhyme label="a" type="f">lusten</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Een hert, dat diendt met <rhyme label="a" type="f" corresp="#s1:l1">rusten</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Den Heer der Heeren <rhyme label="b" type="m">groot</rhyme>!</l>
        <l id="s1:l4" met="3" type="-+">Want waer ghy soeckt <rhyme label="c" type="f">ghenuchten</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Geen blijschap sonder <rhyme label="c" type="f" corresp="#s1:l4">suchten</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In dese wereldt <rhyme label="b" type="m" corresp="#s1:l3">snoodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wellust en kan niet <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">’t Gheluck oock boven <rhyme label="a" type="f" corresp="#s2:l1">maten</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Met al des wereldts <rhyme label="b" type="m">eer</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Dit moetmen eens <rhyme label="c" type="f">verlaten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dus leert de werelt <rhyme label="c" type="f" corresp="#s2:l4">haten</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Al zijt ghy jongh en <rhyme label="b" type="m" corresp="#s2:l3">teer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wy sterven <rhyme label="a" type="f">sekerlijcke</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Te samen arm en <rhyme label="a" type="f" corresp="#s3:l1">rijcke</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Wy weten tijdt noch <rhyme label="b" type="m">stondt</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Dus raed’ ick al <rhyme label="c" type="f">ghelijcke</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Leert sterven <rhyme label="c" type="f" corresp="#s3:l4">gheestelijcke</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Als ghy noch zijt <rhyme label="b" type="m" corresp="#s3:l3">ghesondt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Laet in u hert niet <rhyme label="a" type="f">dringhen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Verganckelijcke <rhyme label="a" type="f" corresp="#s4:l1">dinghen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Met ‘swereldts dienaers <rhyme label="b" type="m">fier</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Sy triumpheeren, <rhyme label="c" type="f">singhen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Sy danssen, en sy <rhyme label="c" type="f" corresp="#s4:l4">springhen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Haer Hemel die is <rhyme label="b" type="m" corresp="#s4:l3">hier</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer wilt een weynigh <rhyme label="a" type="f">beyden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Tot dat sy sullen <rhyme label="a" type="f" corresp="#s5:l1">scheyden</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Met pijn en groot <rhyme label="b" type="m">ghetier</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Als haer de doodt sal <rhyme label="c" type="f">leyden</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Wt dese vette <rhyme label="c" type="f" corresp="#s5:l4">weyde</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Ter slacht-banck vol <rhyme label="b" type="m" corresp="#s5:l3">dangier</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dan sal haer klaer <rhyme label="a" type="f">verthoonen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die werelt met haer <rhyme label="a" type="f" corresp="#s6:l1">loone</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Met al haer <rhyme label="b" type="m">rasernij</rhyme>’,</l>
        <l id="s6:l4" met="3" type="-+">Haer schijnsel nu soo <rhyme label="c" type="f">schoone</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Haer vreughden en haer <rhyme label="c" type="f" corresp="#s6:l4">kroone</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Sal dan al gaen <rhyme label="b" type="m" corresp="#s6:l3">verby</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Daerom, bevroedt mijn <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En soeckt een vreughd en <rhyme label="a" type="f" corresp="#s7:l1">vrede</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Die namaels eeuwigh <rhyme label="b" type="m">duert</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">De werelt wilt <rhyme label="c" type="f">vertreden</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Met al haer <rhyme label="c" type="f" corresp="#s7:l4">ydelheden</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Tot Godt u herte <rhyme label="b" type="m" corresp="#s7:l3">stuert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hy sal u <rhyme label="a" type="f">mildelijcke</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van deughden maken <rhyme label="a" type="f" corresp="#s8:l1">rijcke</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Soo ghy wat voor hem <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En loonen <rhyme label="c" type="f">eeuwelijcke</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Hier na in ’t <rhyme label="c" type="f" corresp="#s8:l4">Hemelrijcke</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Met onverganck’lijck <rhyme label="b" type="m" corresp="#s8:l3">goet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Prins, Heer, geeft ons <rhyme label="a" type="f">ghende</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Pardon van ons <rhyme label="a" type="f" corresp="#s9:l1">misdaden</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Geeft os uw’ graci’ <rhyme label="b" type="m">soet</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Wy volghen uwe <rhyme label="c" type="f">raden</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">De werelt wy <rhyme label="c" type="f" corresp="#s9:l4">versmaden</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Gheeft ons toch goeden <rhyme label="b" type="m" corresp="#s9:l3">moet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
