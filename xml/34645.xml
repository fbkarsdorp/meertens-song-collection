    <melody>Het ging een meisje aan de kant</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">KOmt ghy Bacchi-broeders <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Komt Sileni naeste <rhyme label="b" type="f">vrinden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die hout van een vies <rhyme label="a" type="m" corresp="#s1:l1">geral</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Laet u buyten ievers <rhyme label="b" type="f" corresp="#s1:l2">vinden</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Oft te Koeckel-bergh, oft <rhyme label="c" type="m">el'</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die eerst komt die wint en <rhyme label="c" type="m" corresp="#s1:l5">snel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ick sal een <rhyme label="a" type="m">esbattement</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Desen avondt gaen <rhyme label="b" type="f">vertellen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dat hier buyten oft <rhyme label="a" type="m" corresp="#s2:l1">ontrendt</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Koeckel-bergh, van vier <rhyme label="b" type="f" corresp="#s2:l2">ghesellen</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Is gheschiedt, en op de <rhyme label="c" type="m">baen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Daer sy zijn voor-by <rhyme label="c" type="m" corresp="#s2:l5">ghegaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Siet sy saten ginder <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En begonsten op te <rhyme label="b" type="f">gelpen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Met een kasken elcken <rhyme label="a" type="m" corresp="#s3:l1">keer</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En hun vrouwkens quamen <rhyme label="b" type="f" corresp="#s3:l2">helpen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Want die speelden met <rhyme label="c" type="m">ghesangh</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Van het spel d'eerst' <rhyme label="c" type="m" corresp="#s3:l5">uyt-ghegangh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hans den sot met sijnen <rhyme label="a" type="m">boogh</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Socht oock by den hoop te <rhyme label="b" type="f">komen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Spelende gheen stom <rhyme label="a" type="m" corresp="#s4:l1">vertoogh</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Want hy heeft met hem <rhyme label="b" type="f" corresp="#s4:l2">ghenomen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Blinden Theunis met sijn <rhyme label="c" type="m">lier</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Om oock med' te spelen <rhyme label="c" type="m" corresp="#s4:l5">hier</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dees versierden d'eerste <rhyme label="a" type="m">choor</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Met hun lieffelijck <rhyme label="b" type="f">ghebrakel</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Maer Iak'lijn de schele <rhyme label="a" type="m" corresp="#s5:l1">sloor</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Die begonst met haer <rhyme label="b" type="f" corresp="#s5:l2">ghekakel</rhyme></l>
        <l id="s5:l5" met="4" type="+-">'t Over-schreeuwen al 't <rhyme label="c" type="m">gheluyt</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En sprack dus ten lesten <rhyme label="c" type="m" corresp="#s5:l5">uyt</rhyme>:</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hans ghebuer, meynt dat de <rhyme label="a" type="m">tes</rhyme></l>
        <l id="s6:l2" met="4" type="+-">My met geldt is <rhyme label="b" type="f">over-laden</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dat ghy aen het soet <rhyme label="a" type="m" corresp="#s6:l1">ghebres</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Soo veel gelts meynt te <rhyme label="b" type="f" corresp="#s6:l2">bestaden</rhyme> ?</l>
        <l id="s6:l5" met="4" type="+-">'t Is genoech, laet 't spel wech <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Beter is 't in 't gat te <rhyme label="c" type="m" corresp="#s6:l5">slaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Waer op Hansken sprack: mijn <rhyme label="a" type="m">vrouw'</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Gh'loov' ick die is wel <rhyme label="b" type="f">beseten</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dus en maeck' ick gheenen <rhyme label="a" type="m" corresp="#s7:l1">rouw'</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Want haer beurs die sal wel <rhyme label="b" type="f" corresp="#s7:l2">weten</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Wat een' milde man sy <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Meest wanneer hy niet en <rhyme label="c" type="m" corresp="#s7:l5">gheeft</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ba ghy moght u eens <rhyme label="a" type="m">bedoen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">(Heeft de vrouw' wel stijf <rhyme label="b" type="f">gesproken</rhyme>)</l>
        <l id="s8:l3" met="4" type="+-">Ghy weet dat ick desen <rhyme label="a" type="m" corresp="#s8:l1">noen</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Sonder gelt hebb' <rhyme label="b" type="f" corresp="#s8:l2">op-ghebroken</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Mijnen appel-winckel <rhyme label="c" type="m">saen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Om al soo met u te <rhyme label="c" type="m" corresp="#s8:l5">gaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Dit verstondt seer wel <rhyme label="a" type="m">Passchier</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">En sijn vrouw' oock gingh <rhyme label="b" type="f">beloeren</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Peysde hy is het oock <rhyme label="a" type="m" corresp="#s9:l1">hier</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Soo gestelt, en maeckt geen <rhyme label="b" type="f" corresp="#s9:l2">voeren</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Maer gaet wech ghy <rhyme label="c" type="m">Spele-man</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">En wy gaen oock naer een <rhyme label="c" type="m" corresp="#s9:l5">kan</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Den Speel-man wou zijn <rhyme label="a" type="m">betaelt</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">En den Sot en wou niet <rhyme label="b" type="f">borghen</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Waer-om Klaes heeft <rhyme label="a" type="m" corresp="#s10:l1">om-ghehaelt</rhyme></l>
        <l id="s10:l4" met="4" type="+-">(Dien hadd' wat meerder <rhyme label="b" type="f" corresp="#s10:l2">sorghen</rhyme>)</l>
        <l id="s10:l5" met="4" type="+-">Eenen stuyver, die met <rhyme label="c" type="m">kracht</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Moest van elck zijn <rhyme label="c" type="m" corresp="#s10:l5">voort-gebragt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">En noch volghder kleyn <rhyme label="a" type="m">krackeel</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Want den Sot seyd', dat sijn <rhyme label="b" type="f">snaren</rhyme></l>
        <l id="s11:l3" met="4" type="+-">En sijn gragghe dronckaerts <rhyme label="a" type="m" corresp="#s11:l1">keel</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">G'heel verdrooght en dorre <rhyme label="b" type="f" corresp="#s11:l2">waren</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Die met ieder keer een <rhyme label="c" type="m">pint</rhyme></l>
        <l id="s11:l6" met="4" type="+-">In sijn yd'le blase <rhyme label="c" type="m" corresp="#s11:l5">sint</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Dries den milden gaf een' <rhyme label="a" type="m">pot</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Aen den Speel-man, om te <rhyme label="b" type="f">brengen</rhyme></l>
        <l id="s12:l3" met="4" type="+-">Aen den uyt-ghedrooghden <rhyme label="a" type="m" corresp="#s12:l1">Sot</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Maer hy kost een' teugh <rhyme label="b" type="f" corresp="#s12:l2">verlengen</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">En goot hem met kleyn <rhyme label="c" type="m">ghedruys</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Gansch'lijck in sijn <rhyme label="c" type="m" corresp="#s12:l5">sielen-huys</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Waer van dat den Sot schier <rhyme label="a" type="m">gram</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Korsel-gh'lijck begonst te <rhyme label="b" type="f">kijcken</rhyme>:</l>
        <l id="s13:l3" met="4" type="+-">Maer Passchier half scheef en <rhyme label="a" type="m" corresp="#s13:l1">stram</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Wou gheen schraelheydt laten <rhyme label="b" type="f" corresp="#s13:l2">blijcken</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">En gaf met dien eenen <rhyme label="c" type="m">pot</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Tot danck-segghingh' aen den <rhyme label="c" type="m" corresp="#s13:l5">Sot</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Maer hy van gelijcken <rhyme label="a" type="m">ded'</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">En is daer med' wech <rhyme label="b" type="f">ghetreeden</rhyme>:</l>
        <l id="s14:l3" met="4" type="+-">En soo 't schen' elck we'er met <rhyme label="a" type="m" corresp="#s14:l1">vred'</rhyme></l>
        <l id="s14:l4" met="4" type="+-">D'onderlingh bescheet doen <rhyme label="b" type="f" corresp="#s14:l2">deden</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">Tot dat elck van binnen <rhyme label="c" type="m">nat</rhyme></l>
        <l id="s14:l6" met="4" type="+-">Was gheworden schielijck <rhyme label="c" type="m" corresp="#s14:l5">sat</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Maer den Weerdt quam om het <rhyme label="a" type="m">gelt</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">En begonst den kerf te <rhyme label="b" type="f">kijcken</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Waer van dat sy seer <rhyme label="a" type="m" corresp="#s15:l1">ontstelt</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Hun ghenucht haest lieten <rhyme label="b" type="f" corresp="#s15:l2">strijcken</rhyme>;</l>
        <l id="s15:l5" met="4" type="+-">En elck sagh met druck en <rhyme label="c" type="m">rouw</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Tot verlossingh' op sijn <rhyme label="c" type="m" corresp="#s15:l5">vrouw'</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Elck acht stuyvers is 't <rhyme label="a" type="m">ghelagh</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Sprack hy, dus wilt gelt <rhyme label="b" type="f">bereyden</rhyme>:</l>
        <l id="s16:l3" met="4" type="+-">Passchier daer van druckigh <rhyme label="a" type="m" corresp="#s16:l1">sagh</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">En wou van 't betael wat <rhyme label="b" type="f" corresp="#s16:l2">beyden</rhyme>;</l>
        <l id="s16:l5" met="4" type="+-">Want maer in sijn' yd'len <rhyme label="c" type="m">sack</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Een' vier-stuyvers-penningh <rhyme label="c" type="m" corresp="#s16:l5">stack</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Dries die quam maer even <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s17:l2" met="4" type="+-">En is flux van hun <rhyme label="b" type="f">ghescheyden</rhyme>:</l>
        <l id="s17:l3" met="4" type="+-">Maer Griet riep: Wel buer-man <rhyme label="a" type="m" corresp="#s17:l1">hoe</rhyme>,</l>
        <l id="s17:l4" met="4" type="+-">Wilt ghy dan naer ons niet <rhyme label="b" type="f" corresp="#s17:l2">beyden</rhyme> ?</l>
        <l id="s17:l5" met="4" type="+-">Neen (seyd' hy) 't is al te <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">En ick sien dat 't qualijck <rhyme label="c" type="m" corresp="#s17:l5">gaet</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Hans sprack tot sijn vrouw': Ghy <rhyme label="a" type="m">hoer</rhyme>,</l>
        <l id="s18:l2" met="4" type="+-">Flux ghy sult den Weert <rhyme label="b" type="f">versaden</rhyme>.</l>
        <l id="s18:l3" met="4" type="+-">En haer in traigny <rhyme label="a" type="m" corresp="#s18:l1">voer</rhyme>,</l>
        <l id="s18:l4" met="4" type="+-">Maer sy all' om stilte <rhyme label="b" type="f" corresp="#s18:l2">baden</rhyme>,</l>
        <l id="s18:l5" met="4" type="+-">En daer med' soo heeft sy <rhyme label="c" type="m">saen</rhyme></l>
        <l id="s18:l6" met="4" type="+-">'t Yser van haer hooft <rhyme label="c" type="m" corresp="#s18:l5">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">En den Weerdt van hun te <rhyme label="a" type="m">vred'</rhyme>,</l>
        <l id="s19:l2" met="4" type="+-">Gingh soo veel van d'ander <rhyme label="b" type="f">halen</rhyme>:</l>
        <l id="s19:l3" met="4" type="+-">Waerom dat oock <rhyme label="a" type="m" corresp="#s19:l1">Lijn-ontded'</rhyme></l>
        <l id="s19:l4" met="4" type="+-">Haren kop, om te <rhyme label="b" type="f" corresp="#s19:l2">betalen</rhyme>;</l>
        <l id="s19:l5" met="4" type="+-">Maer Passchier heeft met sijn <rhyme label="c" type="m">gelt</rhyme></l>
        <l id="s19:l6" met="4" type="+-">Sijn vrouws huyck te pand' <rhyme label="c" type="m" corresp="#s19:l5">ghestelt</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Doen is elck al <rhyme label="a" type="m">waggel-voet</rhyme></l>
        <l id="s20:l2" met="4" type="+-">Kijvende naer huys <rhyme label="b" type="f">ghetreden</rhyme>:</l>
        <l id="s20:l3" met="4" type="+-">Peyst wat drinckens lust al <rhyme label="a" type="m" corresp="#s20:l1">doet</rhyme>,</l>
        <l id="s20:l4" met="4" type="+-">(Sprack ick) en ben soo ter <rhyme label="b" type="f" corresp="#s20:l2">steden</rhyme></l>
        <l id="s20:l5" met="4" type="+-">Noch al lacchende <rhyme label="c" type="m">ghegaen</rhyme>,</l>
        <l id="s20:l6" met="4" type="+-">En hier med' was t meest <rhyme label="c" type="m" corresp="#s20:l5">ghedaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
