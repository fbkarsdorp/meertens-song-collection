    <melody>Schoon lief wil mij troost geven</melody>
    <categories/>
  <author>Christianus Vermeulen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Phariseeusche <rhyme label="a" type="f">Oorde</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Socht Iesum in zijn <rhyme label="a" type="f" corresp="#s1:l1">woorde</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Te vangen inden <rhyme label="b" type="m">Raedt</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Waerom sy dienaers <rhyme label="c" type="f">sonden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met veele loose <rhyme label="c" type="f" corresp="#s1:l4">vonden</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Vol nijt, en vol van <rhyme label="b" type="m" corresp="#s1:l3">haet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sy seyden; Meester <rhyme label="a" type="f">Goode</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De Hemelsche <rhyme label="a" type="f" corresp="#s2:l1">ghebode</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Leert ons, en alle <rhyme label="b" type="m">vleesch</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Seght, moghen wy wel <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Den Cijs den Keyser <rhyme label="c" type="f" corresp="#s2:l4">geven</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En sonder <rhyme label="b" type="m" corresp="#s2:l3">sondens-vrees</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wel hoe, ghy <rhyme label="a" type="f">hypocrijten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">ghy valsch <rhyme label="a" type="f" corresp="#s3:l1">Israeliten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Kompt, toont my eens het <rhyme label="b" type="m">gelt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Het welcke van den <rhyme label="c" type="f">Keyser</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Als van een trotsen <rhyme label="c" type="f" corresp="#s3:l4">eyser</rhyme></l>
        <l id="s3:l6" met="3" type="-+">U Volck is voor <rhyme label="b" type="m" corresp="#s3:l3">ghestelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Daer is het; en mits <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Seght nu, sprack hy, wiens <rhyme label="a" type="f" corresp="#s4:l1">wesen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En opschrift is dit <rhyme label="b" type="m">doch</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Den Keyser geeft het <rhyme label="c" type="f">zijne</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En my, geeft oock het <rhyme label="c" type="f" corresp="#s4:l4">mijne</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Loop met u valsch <rhyme label="b" type="m" corresp="#s4:l3">bedroch</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Leert mensch, en schout de <rhyme label="a" type="f">paeden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Leert mensch, en schout de <rhyme label="a" type="f" corresp="#s5:l1">daeden</rhyme></l>
        <l id="s5:l3" met="3" type="-+">der boosen, daermen <rhyme label="b" type="m">spot</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Geeft eerst den rechten <rhyme label="c" type="f">Coningh</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Want hy bewaert u <rhyme label="c" type="f" corresp="#s5:l4">wooningh</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat Godt kompt, geeft dat <rhyme label="b" type="m" corresp="#s5:l3">Godt</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Want daer nae sal eens <rhyme label="a" type="f">vraghen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Godt, in de laetste <rhyme label="a" type="f" corresp="#s6:l1">daghen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Van 't geen u is <rhyme label="b" type="m">gedeelt</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Maeckt doch, dat niet <rhyme label="c" type="f">verduystert</rhyme></l>
        <l id="s6:l5" met="3" type="-+">U ziele sy: ey! <rhyme label="c" type="f" corresp="#s6:l4">luystert</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Want daer in is Godts <rhyme label="b" type="m" corresp="#s6:l3">beeldt</rhyme>.</l>
      </lg>
    </lg>
  </text>
