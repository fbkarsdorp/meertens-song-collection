      <tag standard-name="geestelijk lied" translation="spiritual song">Geestelijk lied</tag>
    </tags>
    <melody>Een amoureus fier gelaat</melody>
    <categories/>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Zyon wilt u <rhyme label="a" type="f">vergaren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Doet blinckende kleederen <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Verbeyt den Heer der <rhyme label="a" type="f" corresp="#s1:l1">Heyrscharen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Siet, hy sal komen <rhyme label="b" type="m" corresp="#s1:l2">saen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dat eynde van alle <rhyme label="c" type="f">dingen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Is nu ghekomen na <rhyme label="d" type="m">by</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ontwaeckt, wilt uyt den slaep <rhyme label="c" type="f" corresp="#s1:l5">ontspringhen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Soo maeckt u Christus <rhyme label="d" type="m" corresp="#s1:l6">vry</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hoort ghy sijn stemme <rhyme label="a" type="f">heden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En verhart u herte <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo sy in de woestijne <rhyme label="a" type="f" corresp="#s2:l1">deden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waerom datse de Heere <rhyme label="b" type="m" corresp="#s2:l2">verliet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sy en quamen niet inder <rhyme label="c" type="f">rusten</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dits gheschreven tot onsen <rhyme label="d" type="m">vermaen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Op dat ons gheen quaedt en soude <rhyme label="c" type="f" corresp="#s2:l5">lusten</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Alsoo 't Israel heeft <rhyme label="d" type="m" corresp="#s2:l6">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En wilt niet <rhyme label="a" type="f">murmureren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Teghen den Heere uwen <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En wilt oock Christum niet <rhyme label="a" type="f" corresp="#s3:l1">temteren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Maer onderdanigh wesen sijn <rhyme label="b" type="m" corresp="#s3:l2">ghebodt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Wy zijn gheworden <rhyme label="c" type="f">deelachtigh</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Christum in des Vaders <rhyme label="d" type="m">schoot</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Houden wy sijn wesen <rhyme label="c" type="f" corresp="#s3:l5">waerachtigh</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Volstandigh tot in den <rhyme label="d" type="m" corresp="#s3:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Weest danckbaer vroegh end' <rhyme label="a" type="f">spade</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Doet den bandt der liefden <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En versuymt niet de groote <rhyme label="a" type="f" corresp="#s4:l1">ghenade</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die Christus on heeft <rhyme label="b" type="m" corresp="#s4:l2">ghedaen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">De werelt sal haer <rhyme label="c" type="f">verblijden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ghy sult treuren ende droevigh <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sy moeten al vervolginghe <rhyme label="c" type="f" corresp="#s4:l5">lijden</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Die in Christum ghelooven <rhyme label="d" type="m" corresp="#s4:l6">fijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Broeders, wilt wesen <rhyme label="a" type="f">langhmoedigh</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Staet in 't geloove, bidt ende <rhyme label="b" type="m">waeckt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Al rasen u vyanden <rhyme label="a" type="f" corresp="#s5:l1">verwoedigh</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">De toekomste des Heeren <rhyme label="b" type="m" corresp="#s5:l2">naeckt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Siet hy komt in de <rhyme label="c" type="f">wolcken</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Alle ooghen sullen hem <rhyme label="d" type="m">sien</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dan sal daer onder alle <rhyme label="c" type="f" corresp="#s5:l5">volcken</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Groot weenen end' huylen <rhyme label="d" type="m" corresp="#s5:l6">gheschien</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Nu maeckt een bitter <rhyme label="a" type="f">klaghen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ghy vervolgers over <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wat sult ghy doen in dese <rhyme label="a" type="f" corresp="#s6:l1">dagen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Als u Godt besoecken <rhyme label="b" type="m" corresp="#s6:l2">sal</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ghy meynt ons te <rhyme label="c" type="f">beswaren</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Maer u straffinghe naecket <rhyme label="d" type="m">schier</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Onsen Godt sal hem <rhyme label="c" type="f" corresp="#s6:l5">openbaren</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Voor hem gaet een verslindende <rhyme label="d" type="m" corresp="#s6:l6">vyer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy sal sijn vyanden <rhyme label="a" type="f">legghen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Tot sijner voeten <rhyme label="b" type="m">banck</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dan sullen de gherechtige <rhyme label="a" type="f" corresp="#s7:l1">seggen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dit is de man die 't al <rhyme label="b" type="m" corresp="#s7:l2">bedwanck</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Dan sullen de rechtveerdige <rhyme label="c" type="f">fijn</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">In grooter volstandigheyt <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Tegen die daer ongherechtigh <rhyme label="c" type="f" corresp="#s7:l5">zijn</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">End' haer druck aen hebben <rhyme label="d" type="m" corresp="#s7:l6">gedaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dan sullen de quade <rhyme label="a" type="f">suchten</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Groot beklagen sal daer <rhyme label="b" type="m">geschien</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dit sijnse die wy deden <rhyme label="a" type="f" corresp="#s8:l1">vluchten</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ende nu in glorien <rhyme label="b" type="m" corresp="#s8:l2">sien</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Och wy ontsinnige <rhyme label="c" type="f">dwasen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Hebben ghemist den rechten <rhyme label="d" type="m">padt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Wy seyden dese lieden <rhyme label="c" type="f" corresp="#s8:l5">rasen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Maer sy hebben recht voor <rhyme label="d" type="m" corresp="#s8:l6">gehadt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dus sal haer den moet <rhyme label="a" type="f">ontsincken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Als sy sullen sien der sonden <rhyme label="b" type="m">loon</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Maer de gherechtige die sullen <rhyme label="a" type="f" corresp="#s9:l1">blincken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Ghelijck de Son in haers Vaders <rhyme label="b" type="m" corresp="#s9:l2">troon</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">O ghy verstroyde <rhyme label="c" type="f">Israelijten</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Weest vrymoedigh tot in den <rhyme label="d" type="m">endt</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Al wil u dat beest <rhyme label="c" type="f" corresp="#s9:l5">verbijten</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Uwe Godt is en eeuwigh <rhyme label="d" type="m" corresp="#s9:l6">regent</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Hy salse rechten <rhyme label="a" type="f">allegader</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Als Christus u Bruydegom <rhyme label="b" type="m">seyt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Comt beminde van mijnen <rhyme label="a" type="f" corresp="#s10:l1">Vader</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat rijcke dat is u <rhyme label="b" type="m" corresp="#s10:l2">bereydt</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Maer tot der slincker <rhyme label="c" type="f">zijde</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Sal hy spreken met wreeden <rhyme label="d" type="m">moet</rhyme>:</l>
        <l id="s10:l7" met="3" type="-+">Gaet van my ghy <rhyme label="c" type="f" corresp="#s10:l5">vermaledijde</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">In de eeuwighe helsche <rhyme label="d" type="m" corresp="#s10:l6">gloet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Siet, daer worden sy al <rhyme label="a" type="f">verdreven</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Die ter wereldt waren seer <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Maer d' oprechten sullen eeuwigh <rhyme label="a" type="f" corresp="#s11:l1">leven</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Want sy lijden ter Wereldt <rhyme label="b" type="m" corresp="#s11:l2">noodt</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Na der Goddelooser <rhyme label="c" type="f">ghedachten</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Sullen sy haer oordeel <rhyme label="d" type="m">ontfaen</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Die den rechtveerdighen <rhyme label="c" type="f" corresp="#s11:l5">verachten</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">End' zijn van den Heere wegh <rhyme label="d" type="m" corresp="#s11:l6">ghegaen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">O Heer wilt u niet van ons <rhyme label="a" type="f">keeren</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Merckt ons lijden om uwen <rhyme label="b" type="m">naem</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">O Christe, weert al ons <rhyme label="a" type="f" corresp="#s12:l1">verseeren</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Maeckt ons door uwen wil <rhyme label="b" type="m" corresp="#s12:l2">bequaem</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">O Vader Godt ende <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">O Princelijcke <rhyme label="d" type="m">Majesteyt</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">V zy alleen lof prijs, end' <rhyme label="c" type="f" corresp="#s12:l5">eere</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Van nu tot in der <rhyme label="d" type="m" corresp="#s12:l6">eeuwigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
