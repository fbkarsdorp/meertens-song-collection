    <tags/>
    <melody>Als ik uit wandelen ga</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAer vreed en eendracht <rhyme label="a" type="m">woont</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Daer wordt de staet <rhyme label="b" type="m">gebout</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">En waermen deughd' <rhyme label="a" type="m" corresp="#s1:l1">beloont</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Daer blinckt het suyver <rhyme label="b" type="m" corresp="#s1:l2">gout</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Geen Landt of hooge <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hoe prachtigh men oyt <rhyme label="d" type="m">vond</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wordt dese schat <rhyme label="c" type="m" corresp="#s1:l5">versmaet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Dan gaet het haest te <rhyme label="d" type="m" corresp="#s1:l6">grond</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Slaet gy u oogen <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Omtrent de Echte <rhyme label="b" type="m">Trouw</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ons' Godt is haren <rhyme label="a" type="m" corresp="#s2:l1">Heer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die vroom sijn Man en <rhyme label="b" type="m" corresp="#s2:l2">Vrouw</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Die hier sijn gangen <rhyme label="c" type="m">went</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Nae sijn bevel en <rhyme label="d" type="m">raet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Wien is'er een <rhyme label="c" type="m" corresp="#s2:l5">bekent</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Van die, die 't qualijck <rhyme label="d" type="m" corresp="#s2:l6">gaet</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hier aen sijn eerst <rhyme label="a" type="m">verplicht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De Vaders van 't <rhyme label="b" type="m">gesin</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die moeten als een <rhyme label="a" type="m" corresp="#s3:l1">licht</rhyme></l>
        <l id="s3:l4" met="3" type="-+">(In Liefde Trouw en <rhyme label="b" type="m" corresp="#s3:l2">Min</rhyme>)</l>
        <l id="s3:l5" met="3" type="-+">Gedurigh vooren <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Om als een dapper <rhyme label="d" type="m">Helt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Het quaed te weder <rhyme label="c" type="m" corresp="#s3:l5">staen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Tot dat het is <rhyme label="d" type="m" corresp="#s3:l6">gevelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Gelijck een wijs <rhyme label="a" type="m">Pijloot</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die Weer en Wind <rhyme label="b" type="m">verwacht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Moet hy op weeld en <rhyme label="a" type="m" corresp="#s4:l1">noot</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Gedurigh nemen <rhyme label="b" type="m" corresp="#s4:l2">acht</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Het lesen van Godts <rhyme label="c" type="m">Woort</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">'t Gehoor in Christi <rhyme label="d" type="m">Kerck</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dat moet hy voort en <rhyme label="c" type="m" corresp="#s4:l5">voort</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Steedts houden voor sijn <rhyme label="d" type="m" corresp="#s4:l6">werck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als een goedt <rhyme label="a" type="m">predicant</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Moet hy sijn <rhyme label="b" type="m">Huys-gesin</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Met wijsheyt en <rhyme label="a" type="m" corresp="#s5:l1">verstant</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Godts vreese printen <rhyme label="b" type="m" corresp="#s5:l2">in</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Soo hy een seyltjen <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat nae de ondeught <rhyme label="d" type="m">treckt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Het dient verswegen <rhyme label="c" type="m" corresp="#s5:l5">niet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Maer straffende <rhyme label="d" type="m" corresp="#s5:l6">bedeckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hem past een stille <rhyme label="a" type="m">geest</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En een bedaert <rhyme label="b" type="m">gemoet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Het welck voor onlust <rhyme label="a" type="m" corresp="#s6:l1">vreest</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Dat allen <rhyme label="b" type="m" corresp="#s6:l2">overvloet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Van Wijn of lecker <rhyme label="c" type="m">Bier</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Kan haten metter <rhyme label="d" type="m">daet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En toonen klaer, dat <rhyme label="c" type="m" corresp="#s6:l5">hier</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Sijn lust niet in <rhyme label="d" type="m" corresp="#s6:l6">bestaet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy moet in sijn <rhyme label="a" type="m">beroep</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Gedurigh besich <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Met praetjes by de <rhyme label="a" type="m" corresp="#s7:l1">stoep</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Of buurt niet <rhyme label="b" type="m" corresp="#s7:l2">omme-gaen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">(Als menigh Wijf <rhyme label="c" type="m">bestaet</rhyme>)</l>
        <l id="s7:l6" met="3" type="-+">Dat past een Vader <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Want dickmael baert het <rhyme label="c" type="m" corresp="#s7:l5">quaet</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">En meesten-deel <rhyme label="d" type="m" corresp="#s7:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wel saligh is de <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die soo sijn gangen <rhyme label="b" type="m">went</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Hy voert de sijne <rhyme label="a" type="m" corresp="#s8:l1">an</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Te bouwen Godes <rhyme label="b" type="m" corresp="#s8:l2">Tent</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Sijn Voor-beelt set haer <rhyme label="c" type="m">voort</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Om met een groote <rhyme label="d" type="m">lust</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Te gaen soo dat <rhyme label="c" type="m" corresp="#s8:l5">behoort</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Tot daer men eeuwigh <rhyme label="d" type="m" corresp="#s8:l6">rust</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
