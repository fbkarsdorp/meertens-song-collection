      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IOnckheyt wilt 't Hemelsch <rhyme label="a" type="f">soecken</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Boven het aerdtsche <rhyme label="b" type="m">goet</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Wilt u eerst'lijck <rhyme label="a" type="f" corresp="#s1:l1">verkloecken</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Te doen oprechte <rhyme label="b" type="m" corresp="#s1:l2">boet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Met waer ootmoet, in laegheyt <rhyme label="c" type="m">leeft</rhyme>.</l>
        <l id="s1:l6" met="4" type="-+">Ten heeft gheen faem, maer 't is <rhyme label="d" type="m">bequaem</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Die hem tot Godt <rhyme label="c" type="m" corresp="#s1:l5">begheeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die Godt van herten <rhyme label="a" type="f">minnen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En soecken boven <rhyme label="b" type="m">al</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Het Hemelsche te <rhyme label="a" type="f" corresp="#s2:l1">winnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Achten gheen aerdtsch <rhyme label="b" type="m" corresp="#s2:l2">misval</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Al schijnt hy mal, in 's werelts <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Als 't niet geluckt, hy onder <rhyme label="d" type="m">duckt</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">En ontfanght geern <rhyme label="c" type="m" corresp="#s2:l5">smaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die alleen heeft voor <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Een onverganckelijck <rhyme label="b" type="m">Rijck</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hoe kan, hoe sal hy <rhyme label="a" type="f" corresp="#s3:l1">poghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Na het <rhyme label="b" type="m" corresp="#s3:l2">verganckelijck</rhyme>?</l>
        <l id="s3:l5" met="4" type="-+">Dit goedt is slijck, haer schoonheyt <rhyme label="c" type="m">dreck</rhyme>.</l>
        <l id="s3:l6" met="4" type="-+">'t Is maer een schijn, een kleyn <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Weest vry des werelts <rhyme label="c" type="m" corresp="#s3:l5">geck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Godt wil u van 't hoogh <rhyme label="a" type="f">stooten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Om u met leyt en <rhyme label="b" type="m">spot</rhyme></l>
        <l id="s4:l3" met="3" type="-+">door kleynheyt te <rhyme label="a" type="f" corresp="#s4:l1">vergrooten</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">' s Wereldts wijsen zijn <rhyme label="b" type="m" corresp="#s4:l2">zot</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Haer luste tot, die <rhyme label="c" type="m">ydelheyt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Zy u verdriet, haer wesen <rhyme label="d" type="m">vliedt</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Tot ootmoet u <rhyme label="c" type="m" corresp="#s4:l5">bereyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wijckt en keert van het <rhyme label="a" type="f">hooghe</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Nu ghy in 't laghe <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daelt neder voor Godts <rhyme label="a" type="f" corresp="#s5:l1">ooghe</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ghy wordt namaels <rhyme label="b" type="m" corresp="#s5:l2">altijdt</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Verhooght, verblijt. waer na toeft <rhyme label="c" type="m">ghy</rhyme>?</l>
        <l id="s5:l6" met="4" type="-+">daelt altijdt neer, tot Godes <rhyme label="d" type="m">eer</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">En verheft sijn <rhyme label="c" type="m" corresp="#s5:l5">glory</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy mooght niet t'evens <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">'t Aertsch en 't Hemelsche <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Alleen uw' hert en <rhyme label="a" type="f" corresp="#s6:l1">sinnen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Tot Godt opheffen <rhyme label="b" type="m" corresp="#s6:l2">doet</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">'t Wort al versoet, die 't aertsch <rhyme label="c" type="m">versaeckt</rhyme>.</l>
        <l id="s6:l6" met="4" type="-+">Laet 's werelts tol, rollen haer <rhyme label="d" type="m">rol</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Alleen het Hemelsch <rhyme label="c" type="m" corresp="#s6:l5">smaeckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Is eer-sucht uw' <rhyme label="a" type="f">bedrijven</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Te sotter is uw <rhyme label="b" type="m">'oogh</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Die gaern in 't laegh wil <rhyme label="a" type="f" corresp="#s7:l1">blijven</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Comt mackelijck in 't <rhyme label="b" type="m" corresp="#s7:l2">hoogh</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Maeckt gheen proloogh, uyt <rhyme label="c" type="m">schijn-gelaet</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Maer toont uw' schijn, soo ghy wilt <rhyme label="d" type="m">zijn</rhyme></l>
        <l id="s7:l7" met="3" type="+-">Oprecht'lijck metter <rhyme label="c" type="m" corresp="#s7:l5">daet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ootmoed lieft boven <rhyme label="a" type="f">allen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Want die op 't laeghste <rhyme label="b" type="m">leyt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Heeft niet om af te <rhyme label="a" type="f" corresp="#s8:l1">vallen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sijn rust is hem <rhyme label="b" type="m" corresp="#s8:l2">bereyt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Hier gelt hoogheydt, noch gift, noch <rhyme label="c" type="m">gaef</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Wie niet verneert te veel <rhyme label="d" type="m">hanteert</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">Is van sijn goedt een <rhyme label="c" type="m" corresp="#s8:l5">slaef</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wilt ghy wesen een <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En Meester over <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Soo wilt u selfs <rhyme label="a" type="f" corresp="#s9:l1">beheeren</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Bedwinght uw' sinnen <rhyme label="b" type="m" corresp="#s9:l2">mal</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Hebt gheen geval, in 'swereldts <rhyme label="c" type="m">staet</rhyme>.</l>
        <l id="s9:l6" met="4" type="-+">Schouwt ydel spel, doet altijdt <rhyme label="d" type="m">wel</rhyme>,</l>
        <l id="s9:l7" met="3" type="+-">Voert een Christen <rhyme label="c" type="m" corresp="#s9:l5">ghelaet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dit liet most ick u <rhyme label="a" type="f">schencken</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Lieve Hoorensche <rhyme label="b" type="m">Ieught</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">My hier by te <rhyme label="a" type="f" corresp="#s10:l1">gedencken</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Als ick ben in de <rhyme label="b" type="m" corresp="#s10:l2">vreught</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Ick heb my veught, wel veertigh <rhyme label="c" type="m">jaer</rhyme></l>
        <l id="s10:l6" met="4" type="-+">V door Godts woort, te leyden <rhyme label="d" type="m">voort</rhyme>,</l>
        <l id="s10:l7" met="3" type="+-">Neemt die leeringh wel <rhyme label="c" type="m" corresp="#s10:l5">waer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
