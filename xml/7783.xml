  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe VVereldt groot sy nu ter <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Met heylsaam blijschap seer <rhyme label="a" type="m" corresp="#s1:l1">verblijdt</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Want IESVS, siet, tot deser <rhyme label="b" type="m">stondt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">De VVereldt maken comt <rhyme label="b" type="m" corresp="#s1:l3">gesondt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ses dagen eer het Pasch-Feest <rhyme label="a" type="m">quam</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Bethania zijn comst <rhyme label="a" type="m" corresp="#s2:l1">vernam</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Al waar hy LAZARO zijn <rhyme label="b" type="m">Vriendt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Tot troost zijns Susters hadd' <rhyme label="b" type="m" corresp="#s2:l3">gediendt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">VVant als hy hadd' vier dagen <rhyme label="a" type="m">lanck</rhyme></l>
        <l id="s3:l2" met="4" type="-+">In't Graff gelegen, en nu <rhyme label="a" type="m" corresp="#s3:l1">stanck</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Heeft CHRISTVS hem uyt 'sDOODTS <rhyme label="b" type="m">geweldt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">In't leven weder-om <rhyme label="b" type="m" corresp="#s3:l3">gestelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een Bus met Narden-salve <rhyme label="a" type="m">reyn</rhyme></l>
        <l id="s4:l2" met="4" type="-+">MARIA opent met <rhyme label="a" type="m" corresp="#s4:l1">geweyn</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dien zy op't Licchaam CHRISTI <rhyme label="b" type="m">giet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">'Twelck-men haar hayr we'er droogen <rhyme label="b" type="m" corresp="#s4:l3">siet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Daar na wiens Macht streckt breed en <rhyme label="a" type="m">wijdt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Op't on-geachte Vuelen <rhyme label="a" type="m" corresp="#s5:l1">rijt</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Na 'sConinghs Stadt <rhyme label="b" type="m">Ierusalem</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Hosanna riep der Scharen <rhyme label="b" type="m" corresp="#s5:l3">stem</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O wonderlijcke <rhyme label="a" type="m">goedigheydt</rhyme> !</l>
        <l id="s6:l2" met="4" type="-+">Wat vreese GODTS heeft hem <rhyme label="a" type="m" corresp="#s6:l1">geleydt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Op't Vuelen dat comt rijden <rhyme label="b" type="m">in</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Die alle dingen geeft <rhyme label="b" type="m" corresp="#s6:l3">begin</rhyme> !</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O VADER u lof-singen <rhyme label="a" type="m">wy</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">V SOON zijn Eer wy geven <rhyme label="a" type="m" corresp="#s7:l1">bly</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Oock 'sHEYL'GEN GEESTS roem sy <rhyme label="b" type="m">verbreydt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Van nu tot in-der <rhyme label="b" type="m" corresp="#s7:l3">eeuwigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
