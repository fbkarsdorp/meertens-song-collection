    <melody>Hilf Gott dass mir es gelinge</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Heer wilt Syon <rhyme label="a" type="f">ontfermen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">U lieue ghetrouwe <rhyme label="b" type="m">bruyt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Aenhoort doch al haer <rhyme label="a" type="f" corresp="#s1:l1">kermen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En wiltse verlossen <rhyme label="b" type="m" corresp="#s1:l2">wt</rhyme></l>
        <l id="s1:l5" met="4" type="-+">De handen van haer <rhyme label="c" type="m">wederparty</rhyme></l>
        <l id="s1:l6" met="3" type="-+">O Heere God der <rhyme label="d" type="f">Goden</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Uerlost ons en maect ons <rhyme label="c" type="m" corresp="#s1:l5">bly</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghylieden die den <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Uan herten beminnet <rhyme label="b" type="m">bloot</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Wilt haten dat boose <rhyme label="a" type="f" corresp="#s2:l1">seere</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat teghen die siele <rhyme label="b" type="m" corresp="#s2:l2">stoot</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Want die Heere die bewaert seer <rhyme label="c" type="m">wel</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Die sielen zijnder <rhyme label="d" type="f">knechten</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Uan der hant der booser <rhyme label="c" type="m" corresp="#s2:l5">ghequel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den gherechtighen is op <rhyme label="a" type="f">ghegaen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Een licht int duyster <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Want hy is vanden slaep op <rhyme label="a" type="f" corresp="#s3:l1">ghestaen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En verresen vander doot <rhyme label="b" type="m" corresp="#s3:l2">voorwaer</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Hier om wilt maken groot den <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ghy alle die verlichtet <rhyme label="d" type="f">zijt</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Uan Christus rechte <rhyme label="c" type="m" corresp="#s3:l5">leer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O Heer hoe langhe wilt ghy <rhyme label="a" type="f">heele</rhyme></l>
        <l id="s4:l2" met="3" type="-+">U aensicht verberghende <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Want daer zijnder so <rhyme label="a" type="f" corresp="#s4:l1">vele</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die teghen ons spouwen <rhyme label="b" type="m" corresp="#s4:l2">fenijn</rhyme></l>
        <l id="s4:l5" met="4" type="-+">O Heere die versmaetheyt <rhyme label="c" type="m">aenhoort</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Uan alle die v na <rhyme label="d" type="f">volghen</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Die sy draghen al om v <rhyme label="c" type="m" corresp="#s4:l5">woort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Heere wy hebben <rhyme label="a" type="f">verlanghen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Al na v eewich <rhyme label="b" type="m">rijck</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Wilt ons ghebet <rhyme label="a" type="f" corresp="#s5:l1">ontfanghen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die tot v roepen al <rhyme label="b" type="m" corresp="#s5:l2">ghelijck</rhyme></l>
        <l id="s5:l5" met="4" type="-+">O Heer wilt senden uwen <rhyme label="c" type="m">gheest</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Op dat hy mach <rhyme label="d" type="f">vertroosten</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Die v verwachten minst ende <rhyme label="c" type="m" corresp="#s5:l5">meest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Prijst den Heere syne <rhyme label="a" type="f">knechten</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Ghy die zijn welbehaghen <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Want die Heere sal den <rhyme label="a" type="f" corresp="#s6:l1">oprechten</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Seer ghenadelick en <rhyme label="b" type="m" corresp="#s6:l2">soet</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Hantieren en vertroosten <rhyme label="c" type="m">fijn</rhyme></l>
        <l id="s6:l6" met="3" type="-+">En niet goets en sal <rhyme label="d" type="f">ghebreken</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Die sonder smette leuende <rhyme label="c" type="m" corresp="#s6:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wel den volcke tot allen <rhyme label="a" type="f">daghen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Diens die Heere een God <rhyme label="b" type="m">is</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Want die Heere heeft goet <rhyme label="a" type="f" corresp="#s7:l1">behaghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Aen alle zijn knechten <rhyme label="b" type="m" corresp="#s7:l2">expres</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Maer aen den Goddeloosen <rhyme label="c" type="m">fel</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Sal hy die wrake <rhyme label="d" type="f">betalen</rhyme></l>
        <l id="s7:l7" met="4" type="-+">En doodense met eewich <rhyme label="c" type="m" corresp="#s7:l5">ghequel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Loeft den Heere o <rhyme label="a" type="f">Ierusalem</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Syon prijst dijnen God <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Die v bekeert heeft door zijnder <rhyme label="a" type="f" corresp="#s8:l1">stem</rhyme></l>
        <l id="s8:l4" met="3" type="-+">En door zijn ghenade <rhyme label="b" type="m" corresp="#s8:l2">bloot</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Ende heeft v oock eewich <rhyme label="c" type="m">beurijt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Dus willet hem <rhyme label="d" type="f">aenbeden</rhyme></l>
        <l id="s8:l7" met="4" type="-+">En louen en prijsen tot alder <rhyme label="c" type="m" corresp="#s8:l5">tijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
