  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt is een reys <rhyme label="a" type="m">geschiet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat Jesus was <rhyme label="b" type="f">geseeten</rhyme></l>
        <l id="s1:l3" met="3" type="-+">By d'Offer-kist, en <rhyme label="a" type="m" corresp="#s1:l1">siet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Wat daer in werdt <rhyme label="b" type="f" corresp="#s1:l2">gesmeeten</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ende hy heel wel <rhyme label="c" type="f">wiste</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat se meest waren <rhyme label="d" type="m">rijk</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die in den <rhyme label="c" type="f" corresp="#s1:l5">Offer-kiste</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Offerden <rhyme label="d" type="m" corresp="#s1:l6">rijkelijk</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Daer na hy koomen <rhyme label="a" type="m">sagh</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Een schamel Weeuw ten <rhyme label="b" type="f">offer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Welke twee duyten <rhyme label="a" type="m" corresp="#s2:l1">lagh</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In <rhyme label="b" type="f" corresp="#s2:l2">d'Offerhandes-koffer</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Hy deede tot hem <rhyme label="c" type="f">koomen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Sijne <rhyme label="d" type="m">Discipulen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En seydt, ik heb <rhyme label="c" type="f" corresp="#s2:l5">vernoomen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Na dese <rhyme label="d" type="m" corresp="#s2:l6">Offeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die schamel Weduw <rhyme label="a" type="m">geeft</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Meer als de ander <rhyme label="b" type="f">geeven</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Want van 't kleyn dat sy <rhyme label="a" type="m" corresp="#s3:l1">heeft</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Om soober af te <rhyme label="b" type="f" corresp="#s3:l2">leeven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Geeft sy haer nootdruft <rhyme label="c" type="f">heele</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">d'Andere van haer <rhyme label="d" type="m">goet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Hebben ge-offert <rhyme label="c" type="f" corresp="#s3:l5">veele</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Want haer is <rhyme label="d" type="m" corresp="#s3:l6">overvloet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Jesu, gy niet <rhyme label="a" type="m">versmaet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">'t Geen dat men u <rhyme label="b" type="f">op-dragen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Al is 't een kleyne <rhyme label="a" type="m" corresp="#s4:l1">daet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gy daer in hebt <rhyme label="b" type="f" corresp="#s4:l2">behagen</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Dus krijgen wy <rhyme label="c" type="f">begeeren</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Al is het niet seer <rhyme label="d" type="m">veel</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">U ook wat te <rhyme label="c" type="f" corresp="#s4:l5">vereeren</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Neemt het ten besten <rhyme label="d" type="m" corresp="#s4:l6">deel</rhyme>.</l>
      </lg>
    </lg>
  </text>
