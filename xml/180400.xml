  <author>Gaudentius van Loemel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Comt menschen all’ met blyschap <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Nu is verresen vander <rhyme label="a" type="m" corresp="#s1:l1">doodt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Den Prins der glori die ons <rhyme label="b" type="m">all</rhyme>’,</l>
        <l id="s1:l4" met="4" type="-+">Heeft vry gemaeckt van Adams <rhyme label="b" type="m" corresp="#s1:l3">vall</rhyme>’,</l>
        <l id="s1:l5" met="4" type="-+">‘T is Christus soet, die ons <rhyme label="c" type="m">gemoet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">In vreughde weder leven <rhyme label="c" type="m" corresp="#s1:l5">doet</rhyme>.</l>
        <l id="s1:l7" met="4" type="-+">Sijn liefde groot, in onsen <rhyme label="d" type="m">noodt</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Comt ons verlossen vande <rhyme label="d" type="m" corresp="#s1:l7">doodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy heeft door lijden <rhyme label="a" type="m">triumphant</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Gebroken onsen kerckers <rhyme label="a" type="m" corresp="#s2:l1">bandt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Waerom de hell’ verslagen <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat dese proy haer nu <rhyme label="b" type="m" corresp="#s2:l3">ontgaet</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Want door sijn Doodt uyt onsen <rhyme label="c" type="m">noodt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Brenght ons al tot des Vaders <rhyme label="c" type="m" corresp="#s2:l5">schoot</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">En hy wou zyn, ons <rhyme label="d" type="m">Medecijn</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Om te genesen vande <rhyme label="d" type="m" corresp="#s2:l7">pijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dus Mensch siet op naer ‘t heylich <rhyme label="a" type="m">landt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Daer hy sit aen Godts rechter <rhyme label="a" type="m" corresp="#s3:l1">handt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Daer ist dat hy u nu <rhyme label="b" type="m">verhoort</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Versoent den Vader die was <rhyme label="b" type="m" corresp="#s3:l3">vestoort</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Hem dan aenkleeft, nu all’ die <rhyme label="c" type="m">leeft</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Want hy de doodt verwonnen <rhyme label="c" type="m" corresp="#s3:l5">heeft</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Sonder respijt, verliest geen <rhyme label="d" type="m">tijdt</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Off anders gaet ghy ‘t leven <rhyme label="d" type="m" corresp="#s3:l7">quyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Iesu die door u lijden <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hebt gansch verwonnen onse <rhyme label="a" type="m" corresp="#s4:l1">Doodt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Laet u glorieus <rhyme label="b" type="m">begraeffenis</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Tot ons Zielen <rhyme label="b" type="m" corresp="#s4:l3">laeffenis</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En laet u pijn ons <rhyme label="c" type="m">medecijn</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">In alle druck en lijden <rhyme label="c" type="m" corresp="#s4:l5">zijn</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Soo sullen wy, eens naermaels <rhyme label="d" type="m">bly</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Al comen tot u rechte <rhyme label="d" type="m" corresp="#s4:l7">zy</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
