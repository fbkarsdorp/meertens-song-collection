    <melody>Iets moet ik u Laura vragen</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ZY, die staegh met open <rhyme label="a" type="f">ooren</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Plachten Jesus woordt te <rhyme label="a" type="f" corresp="#s1:l1">hooren</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Voelden haer eens <rhyme label="b" type="m">aengevat</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Van den honger, doe het <rhyme label="c" type="f">Kooren</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Rijp en lustigh haer stont <rhyme label="c" type="f" corresp="#s1:l4">vooren</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Aen de kant van 't <rhyme label="b" type="m" corresp="#s1:l3">wandel-pat</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Doe de noot belast te <rhyme label="a" type="f">eten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Sijn zy daer niet <rhyme label="a" type="f" corresp="#s2:l1">neergeseten</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Maer zy aten gaende <rhyme label="b" type="m">voort</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Dit 's een les aen ons <rhyme label="c" type="f">gegeven</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Om de dinghen van dit <rhyme label="c" type="f" corresp="#s2:l4">leven</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Te ghebruycken soo 't <rhyme label="b" type="m" corresp="#s2:l3">behoort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In dees Wereldt gaen wy <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Op de wegh ten Hemel <rhyme label="a" type="f" corresp="#s3:l1">treden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Onse tijdt is maer een <rhyme label="b" type="m">Reys</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En een padt om af te <rhyme label="c" type="f">maecken</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Evenwel, des Wereldts <rhyme label="c" type="f" corresp="#s3:l4">saecken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Sijn hier noodigh voor het <rhyme label="b" type="m" corresp="#s3:l3">vleys</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Daer op komen d' Aerdtsche <rhyme label="a" type="f">dinghen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Seer aenlock'lijck ons <rhyme label="a" type="f" corresp="#s4:l1">om-ringhen</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">En de Wereldt die toont <rhyme label="b" type="m">haer</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Vol ghepropt van soete <rhyme label="c" type="f">lusten</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Daer by menigh hem gaet <rhyme label="c" type="f" corresp="#s4:l4">rusten</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Als een moede <rhyme label="b" type="m" corresp="#s4:l3">wandelaer</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Maer de rechte <rhyme label="a" type="f">Hemel-linghen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Komen door dees Aerdtsche <rhyme label="a" type="f" corresp="#s5:l1">dinghen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Nimmer tot een <rhyme label="b" type="m">stille-stant</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Noch de vleysschelijcke <rhyme label="c" type="f">saecken</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Doen gheen reys ten Hemel <rhyme label="c" type="f" corresp="#s5:l4">staecken</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Hem die ooght op 't <rhyme label="b" type="m" corresp="#s5:l3">Vader-Landt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
