  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Waer sullen wy nu toch <rhyme label="a" type="f">blijven</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wy Boeren cleyn en <rhyme label="b" type="m">groot</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Ons Koeyen sietmen <rhyme label="a" type="f" corresp="#s1:l1">ontdrijven</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Wy worden bijster en <rhyme label="b" type="m" corresp="#s1:l2">bloot</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Wy moghen niet langher Heeren <rhyme label="c" type="m">blijven</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Om onse Butter men niet en <rhyme label="c" type="m" corresp="#s1:l5">kijven</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Men neemtse teghen onsen <rhyme label="d" type="m">wil</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Den Boer den Boer den schamelen <rhyme label="e" type="m">Boer</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Hy moet noch swijghen <rhyme label="d" type="m" corresp="#s1:l7">stil</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die Spaengiaert wil ons <rhyme label="a" type="f">hencken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Als wy die Geus <rhyme label="b" type="m">bystaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die Geus die wil ons <rhyme label="a" type="f" corresp="#s2:l1">crencken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Als wy by de Spaengiaerts <rhyme label="b" type="m" corresp="#s2:l2">gaen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Wy hebben aen gheenen cant <rhyme label="c" type="m">vree</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Wy souden wel gheern houden <rhyme label="c" type="m" corresp="#s2:l5">stee</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">En melcken onse <rhyme label="d" type="m">Koe</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Den boer den <rhyme label="e" type="m">boer</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">dit crijghen is hy <rhyme label="d" type="m" corresp="#s2:l7">moe</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ons huysen men <rhyme label="a" type="f">afbranden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Al boven onse <rhyme label="b" type="m">hooft</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wy verliesen ghelt en <rhyme label="a" type="f" corresp="#s3:l1">panden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wy worden heel <rhyme label="b" type="m" corresp="#s3:l2">berooft</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Och mochtet gaen na onsen <rhyme label="c" type="m">sin</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Wy nament wel een luttel <rhyme label="c" type="m" corresp="#s3:l5">min</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Dit Cruys valt ons te <rhyme label="d" type="m">suer</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Den boer den <rhyme label="e" type="m">boer</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">heeft quaet <rhyme label="d" type="m" corresp="#s3:l7">avontuer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Men gaet ons schatten en <rhyme label="a" type="f">scheeren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Want het haer soo <rhyme label="b" type="m">behaecht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Of wijt moghen <rhyme label="a" type="f" corresp="#s4:l1">ontbeeren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat wert ons niet <rhyme label="b" type="m" corresp="#s4:l2">ghevraecht</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Tis brengt ons ghelt al by die <rhyme label="c" type="m">pont</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Of wy senden knechten nu <rhyme label="c" type="m" corresp="#s4:l5">terstont</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Die halent met <rhyme label="d" type="m">ghewelt</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Den boer den <rhyme label="e" type="m">boer</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">die is qualick <rhyme label="d" type="m" corresp="#s4:l7">ghestelt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wy moeten oock <rhyme label="a" type="f">arbeyen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Aen Schanssen ende <rhyme label="b" type="m">Wal</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Het zy in wat <rhyme label="a" type="f" corresp="#s5:l1">Contreyen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Men roept ons int <rhyme label="b" type="m" corresp="#s5:l2">ghetal</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Tis hier een twintich dertich <rhyme label="c" type="m">man</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Wy zijnder al wat qualick <rhyme label="c" type="m" corresp="#s5:l5">an</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Alsmen dit wel <rhyme label="d" type="m">insiet</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Den boer den <rhyme label="e" type="m">boer</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">die lijdt nu veel <rhyme label="d" type="m" corresp="#s5:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wy worden noch <rhyme label="a" type="f">ontboden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dit is die meeste <rhyme label="b" type="m">last</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Om die Spaengiaerts uut te <rhyme label="a" type="f" corresp="#s6:l1">roden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hoewel het ons niet en <rhyme label="b" type="m" corresp="#s6:l2">past</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Willen wy behouden goet en <rhyme label="c" type="m">lijf</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Wy moeten loopen al wat <rhyme label="c" type="m" corresp="#s6:l5">stijf</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Met onse gheweer al na de <rhyme label="d" type="m">Schans</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Den boer den <rhyme label="e" type="m">boer</rhyme>,</l>
        <l id="s6:l9" met="3" type="+-">qualick loopt zijn <rhyme label="d" type="m" corresp="#s6:l7">cans</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wat willen wy veel <rhyme label="a" type="f">segghen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Laten wijt lijden met <rhyme label="b" type="m">ghedult</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Als wijt wel <rhyme label="a" type="f" corresp="#s7:l1">overlegghen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Soo ist meest ons eyghen <rhyme label="b" type="m" corresp="#s7:l2">schult</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Wy waren hooveerdich ende <rhyme label="c" type="m">rijck</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Wy leydent over met <rhyme label="c" type="m" corresp="#s7:l5">practijck</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Al om ons Naesten te <rhyme label="d" type="m">verraen</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Dus wil die Heer na sijn <rhyme label="e" type="m">begheer</rhyme></l>
        <l id="s7:l9" met="3" type="+-">Ons nu met Roeden <rhyme label="d" type="m" corresp="#s7:l7">slaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
