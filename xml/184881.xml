  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AEn-ghesien alle <rhyme label="a" type="m">dingh</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Is vol <rhyme label="a" type="m" corresp="#s1:l1">veranderingh</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo laet ons met <rhyme label="b" type="f">malkand'ren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Op gheen dingh steunen, <rhyme label="c" type="m">maer</rhyme></l>
        <l id="s1:l5" met="3" type="-+">De tijdt wel nemen <rhyme label="c" type="m" corresp="#s1:l4">waer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En ons' leven <rhyme label="b" type="f" corresp="#s1:l3">verand'ren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer niet ghelijck de <rhyme label="a" type="m">Maen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Nu wassen, dan <rhyme label="a" type="m" corresp="#s2:l1">af-gaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer in de deught <rhyme label="b" type="f">volherden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En worden nimmer <rhyme label="c" type="m">loom</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Maer als een vruchtbaer <rhyme label="c" type="m" corresp="#s2:l4">boom</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Al grooter, grooter <rhyme label="b" type="f" corresp="#s2:l3">werden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Yv'righ tot aller <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Zijn in des Heeren <rhyme label="a" type="m" corresp="#s3:l1">strijdt</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Op dat wy onse <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En alle malle <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Die alle deughde <rhyme label="c" type="m" corresp="#s3:l4">blust</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Te deghen <rhyme label="b" type="f" corresp="#s3:l3">overwinnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Kreekels en Slanghen <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Verlaten 't oude <rhyme label="a" type="m" corresp="#s4:l1">vel</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wy onse oude <rhyme label="b" type="f">kleeden</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Maer 't sal ons Cieren <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Soo wy nae Christus <rhyme label="c" type="m" corresp="#s4:l4">leer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Verlaten d'oude <rhyme label="b" type="f" corresp="#s4:l3">zeden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Listigh 't loose <rhyme label="a" type="m">Serpent</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ons' Oud'ren had <rhyme label="a" type="m" corresp="#s5:l1">verblent</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En ons soeckt het noch <rhyme label="b" type="f">heeden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Te brenghen tot den <rhyme label="c" type="m">Val</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Want het raedt, yder <rhyme label="c" type="m" corresp="#s5:l4">sal</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Hem met schijn-deughde <rhyme label="b" type="f" corresp="#s5:l3">kleeden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doch laet ons gheen <rhyme label="a" type="m">ghehoor</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Hem gheven: maer het <rhyme label="a" type="m" corresp="#s6:l1">oor</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Der zielen stadigh <rhyme label="b" type="f">stoppen</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">En houden dagh en <rhyme label="c" type="m">nacht</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Altijdt wel scherpe <rhyme label="c" type="m" corresp="#s6:l4">wacht</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Als d'Opper-Heer komt <rhyme label="b" type="f" corresp="#s6:l3">kloppen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ter stont ons vlijtigh <rhyme label="a" type="m">spoe'n</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ons' herten <rhyme label="a" type="m" corresp="#s7:l1">open-doen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Hem daer Herberghe <rhyme label="b" type="f">gheven</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Soo sal hy ons <rhyme label="c" type="m">(ghelijck</rhyme></l>
        <l id="s7:l5" met="3" type="-+">De Eng'len) in sijn <rhyme label="c" type="m" corresp="#s7:l4">Rijck</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Herberghen nae dit <rhyme label="b" type="f" corresp="#s7:l3">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
