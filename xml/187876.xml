    <melody>Meisje moet ik bij u slapen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAnneer Isr'el trecken <rhyme label="a" type="f">soude</rhyme></l>
        <l id="s1:l2" met="5" type="+-">Wt Egypten, los en vry, namen <rhyme label="b" type="m">zy</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Van haer Buyren vele <rhyme label="a" type="f" corresp="#s1:l1">Goude</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En veel Silvers oock daer <rhyme label="b" type="m" corresp="#s1:l2">by</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maer d'onwaerde aerden <rhyme label="a" type="f">Vaten</rhyme>,</l>
        <l id="s2:l2" met="5" type="+-">En d'onkostelijcke stof // rou en <rhyme label="b" type="m">grof</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hebben sy aen haer <rhyme label="a" type="f" corresp="#s2:l1">gelaten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Gaende alsoo van haer <rhyme label="b" type="m" corresp="#s2:l2">of</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hy, die met <rhyme label="a" type="f">voorsichtigheden</rhyme></l>
        <l id="s3:l2" met="5" type="+-">By een boos geslacht om gaet // vint hier <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'t Beste oock te nemen <rhyme label="a" type="f" corresp="#s3:l1">mede</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Maer te laten al wat <rhyme label="b" type="m" corresp="#s3:l2">schaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Siet ghy by haer goe <rhyme label="a" type="f">manieren</rhyme>,</l>
        <l id="s4:l2" met="5" type="+-">Smaeckende na deught en eer // achtse <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Om daer mee u oock te <rhyme label="a" type="f" corresp="#s4:l1">cieren</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Maer van 't snootse hebt <rhyme label="b" type="m" corresp="#s4:l2">afkeer</rhyme>.</l>
      </lg>
    </lg>
  </text>
