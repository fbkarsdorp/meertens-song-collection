  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Ihesu heere hier <rhyme label="a" type="f">bouen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Lof moet v altoos <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">This recht dat wij v <rhyme label="a" type="f" corresp="#s1:l1">louen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Al om den name <rhyme label="b" type="m" corresp="#s1:l2">dijn</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want hi is alsoe <rhyme label="a" type="f">soete</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Der sielen <rhyme label="b" type="m">medecijn</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Het is alder qualen <rhyme label="a" type="f" corresp="#s2:l1">boete</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ende troost van alle <rhyme label="b" type="m" corresp="#s2:l2">pijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">So wie dat bidt den <rhyme label="a" type="f">vader</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Doer Iesus name <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Hi crighet alle <rhyme label="a" type="f" corresp="#s3:l1">gader</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Lof soete heere <rhyme label="b" type="m" corresp="#s3:l2">mijn</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">So wie dat hem wil <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die moet hem volghen <rhyme label="b" type="m">nae</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ende mercken wel van <rhyme label="a" type="f" corresp="#s4:l1">binnen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Waer dat hi henen <rhyme label="b" type="m" corresp="#s4:l2">gae</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Want Iesus is <rhyme label="a" type="f">ghegangen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Doer pijn ende liden <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Voer ons heeft hi <rhyme label="a" type="f" corresp="#s5:l1">ghehangen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ende sterf die bitter <rhyme label="b" type="m" corresp="#s5:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wie met hem wil <rhyme label="a" type="f">verbliden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die sal dat wel <rhyme label="b" type="m">verstaen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Dat hi hier oock moet <rhyme label="a" type="f" corresp="#s6:l1">liden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Alsoe hi heeft <rhyme label="b" type="m" corresp="#s6:l2">ghedaen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Mer wie daer voer <rhyme label="a" type="f">vergrouwet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Ende altoos in sonden <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Die en mogen niet <rhyme label="a" type="f" corresp="#s7:l1">anscouwen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Hier nae sijn claer <rhyme label="b" type="m" corresp="#s7:l2">aenschijn</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">So wie in druck <rhyme label="a" type="f">verhogen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ende liden <rhyme label="b" type="m">blidelijck</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Die sullen hier nae <rhyme label="a" type="f" corresp="#s8:l1">moghen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Besitten dat eewighe <rhyme label="b" type="m" corresp="#s8:l2">rijck</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O Iesu lief van <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Lof si v tot alder <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Laet ons v rijck <rhyme label="a" type="f" corresp="#s9:l1">ghewinnen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">O heere <rhyme label="b" type="m" corresp="#s9:l2">ghebenedijt</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
