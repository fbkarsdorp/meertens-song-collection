  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHepeyns en swaer <rhyme label="a" type="f">doleuren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat doet my groot <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat ick aldus moet <rhyme label="a" type="f" corresp="#s1:l1">treuren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat en compt anders <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dan om dat ick nu moet <rhyme label="c" type="f">derven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">t'Geselschap alle <rhyme label="d" type="m">gaer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Godt wil ons weder <rhyme label="c" type="f" corresp="#s1:l5">brenghen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">By een int nieuwe <rhyme label="d" type="m" corresp="#s1:l6">Jaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer nu moeten wy <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Al ist nu grooten <rhyme label="b" type="m">druck</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Den Heere wil u <rhyme label="a" type="f" corresp="#s2:l1">gheleyden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En gheven u veel <rhyme label="b" type="m" corresp="#s2:l2">gheluck</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Ghenade en vree, en liefde <rhyme label="c" type="f">mee</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Van God den hemelschen <rhyme label="d" type="m">vaer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die wil ons t'samen <rhyme label="c" type="f" corresp="#s2:l5">weyden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Al in dit nieuwe <rhyme label="d" type="m" corresp="#s2:l6">Jaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Vwe Pelgremagie <rhyme label="a" type="f">reene</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met suchten ende <rhyme label="b" type="m">weent</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Toont dat ghy zijt de <rhyme label="a" type="f" corresp="#s3:l1">gheene</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die Godt van herten <rhyme label="b" type="m" corresp="#s3:l2">meent</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Al zijt ghy onvroet, veel <rhyme label="c" type="f">tegen-spoet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Staet vroom als een <rhyme label="d" type="m">pijlaer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Godt cant weder <rhyme label="c" type="f" corresp="#s3:l5">verleenen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Al in dit nieuwe <rhyme label="d" type="m" corresp="#s3:l6">Jaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Blijft int gheloove <rhyme label="a" type="f">crachtich</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sterck al inder liefden <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Och weest my doch <rhyme label="a" type="f" corresp="#s4:l1">ghedachtich</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Voor Godt met groot <rhyme label="b" type="m" corresp="#s4:l2">ootmoet</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">In u ghebet, doch <rhyme label="c" type="f">altemet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Als voor Godts <rhyme label="d" type="m">schuldenaer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Soo werd' ick u <rhyme label="c" type="f" corresp="#s4:l5">ghedachtich</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Al in dit nieuwe <rhyme label="d" type="m" corresp="#s4:l6">Jaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Laet ons somtijts <rhyme label="a" type="f">ghedincken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Of wy voor Godt recht <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Op dat wy niet en <rhyme label="a" type="f" corresp="#s5:l1">smeken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Stant hoochmoedich <rhyme label="b" type="m" corresp="#s5:l2">belaen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Hoochmoedich geschal, compt voor den <rhyme label="c" type="f">val</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Och vrienden nemet <rhyme label="d" type="m">waer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En wilt gheen tweesins <rhyme label="c" type="f" corresp="#s5:l5">hincken</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Al in dit nieuwe <rhyme label="d" type="m" corresp="#s5:l6">Jaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wilt vromelick door <rhyme label="a" type="f">ganghen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wilt inden Geest <rhyme label="b" type="m">verblyen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Al vallet u dickmaels <rhyme label="a" type="f" corresp="#s6:l1">banghe</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wilt doch in tijts <rhyme label="b" type="m" corresp="#s6:l2">toesien</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dat u niemant, met geen <rhyme label="c" type="f">samblant</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En make <rhyme label="d" type="m">wandelbaer</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Maer wilt doch stijf <rhyme label="c" type="f" corresp="#s6:l5">aenhangen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Al in dit nieuwe <rhyme label="d" type="m" corresp="#s6:l6">Jaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Staet int gheloove <rhyme label="a" type="f">crachtich</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sterck inder liefden <rhyme label="b" type="m">coen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Soo weten wy <rhyme label="a" type="f" corresp="#s7:l1">voordachtich</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wat Godt met ons wilt <rhyme label="b" type="m" corresp="#s7:l2">doen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Ick weet dat staet, by zijnen <rhyme label="c" type="f">raet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Och wy arm <rhyme label="d" type="m">sondaer</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">O Godt weest ons <rhyme label="c" type="f" corresp="#s7:l5">gedachtich</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Al in dit nieuwe <rhyme label="d" type="m" corresp="#s7:l6">Jaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O Heere wilt ons <rhyme label="a" type="f">bewaren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Als wy nu van hier <rhyme label="b" type="m">scheen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Wie weet waer ick sal <rhyme label="a" type="f" corresp="#s8:l1">varen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Meer dan de Heere <rhyme label="b" type="m" corresp="#s8:l2">alleen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Ghedenckt doch my, dat bid ic <rhyme label="c" type="f">dy</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">In u ghebeden <rhyme label="d" type="m">clear</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Op dat wy weder <rhyme label="c" type="f" corresp="#s8:l5">vergaeren</rhyme>.</l>
        <l id="s8:l8" met="3" type="-+">Als in dit nieuwe <rhyme label="d" type="m" corresp="#s8:l6">Jaer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Eer dat wy scheyden <rhyme label="a" type="f">moeten</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Van broeders en susters <rhyme label="b" type="m">mede</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Soo wil ick u tsamen <rhyme label="a" type="f" corresp="#s9:l1">groeten</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Al met des heeren <rhyme label="b" type="m" corresp="#s9:l2">vrede</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Met groot ootmoet, het beste <rhyme label="c" type="f">doet</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En vreest toch niet een <rhyme label="d" type="m">haer</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Maer doet oprechte <rhyme label="c" type="f" corresp="#s9:l5">boet</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Al In dit nieuwe <rhyme label="d" type="m" corresp="#s9:l6">Jaer</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wy hebben ghesproken <rhyme label="a" type="f">t'samen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Wt liefden van gods <rhyme label="b" type="m">woordt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Nu singhen wy naert <rhyme label="a" type="f" corresp="#s10:l1">betamen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Oorlof soo het wel <rhyme label="b" type="m" corresp="#s10:l2">behoort</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Vrienden gemeen, wy moeten <rhyme label="c" type="f">scheen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Adieu mijn liefste <rhyme label="d" type="m">Caer</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">En wilt u het woort niet <rhyme label="c" type="f" corresp="#s10:l5">schamen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Al In dit nieuwe <rhyme label="d" type="m" corresp="#s10:l6">Jaer</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Oorlof al in dit <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Soo beveel ick u den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Laet het woort door u <rhyme label="a" type="f" corresp="#s11:l1">verbreyden</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Dat bidt ick u alsoo <rhyme label="b" type="m" corresp="#s11:l2">seer</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Nu segge ick adieu, tot op een <rhyme label="c" type="f">nieu</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">het scheyden valt my <rhyme label="d" type="m">swaer</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Den Heer wil u <rhyme label="c" type="f" corresp="#s11:l5">gheleyden</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Al in dit nieuwe <rhyme label="d" type="m" corresp="#s11:l6">Jaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
