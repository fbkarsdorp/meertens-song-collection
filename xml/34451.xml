  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">OCh! wat moet hy <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Die sich wilt <rhyme label="a" type="f" corresp="#s1:l1">verblijden</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">En we’er-minn’ <rhyme label="b" type="m">ontfaen</rhyme>!</l>
        <l id="s1:l4" met="3" type="+-">Och hoe moet hy <rhyme label="c" type="f">klaghen</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">En sijn lief <rhyme label="c" type="f" corresp="#s1:l4">naer-jaghen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En sijn lief <rhyme label="c" type="f" corresp="#s1:l4">naer-jaghen</rhyme></l>
        <l id="s1:l7" met="3" type="+-">In des liefdens <rhyme label="b" type="m" corresp="#s1:l3">baen</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Maer gheluckigh’ <rhyme label="a" type="f">hertjens</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Die naer korte <rhyme label="a" type="f" corresp="#s2:l1">smertjens</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Krijghen <rhyme label="b" type="m">weder-min</rhyme>:</l>
        <l id="s2:l4" met="3" type="+-">Moght ick die <rhyme label="c" type="f">verwerven</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Gheerne sou ick <rhyme label="c" type="f" corresp="#s2:l4">sterven</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Gheerne sou ick <rhyme label="c" type="f" corresp="#s2:l4">sterven</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Nisa mijn’ <rhyme label="b" type="m" corresp="#s2:l3">vrindin</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Maer wat wil ick <rhyme label="a" type="f">duchten</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">En met droeve <rhyme label="a" type="f" corresp="#s3:l1">suchten</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Slijten mijne <rhyme label="b" type="m">jeught</rhyme>?</l>
        <l id="s3:l4" met="3" type="+-">Ick wil blijven <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Nisa sal my <rhyme label="c" type="f" corresp="#s3:l4">gheven</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Nisa sal my <rhyme label="c" type="f" corresp="#s3:l4">gheven</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Alle troost en <rhyme label="b" type="m" corresp="#s3:l3">vreught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Sy sal beyd’ haer <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Vol van soet <rhyme label="a" type="f" corresp="#s4:l1">med’-dooghen</rhyme></l>
        <l id="s4:l3" met="3" type="+-">Op my <rhyme label="b" type="m">neder-slaen</rhyme>;</l>
        <l id="s4:l4" met="3" type="+-">Sy sal <rhyme label="c" type="f">weder-minnen</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Met haer hert’ en <rhyme label="c" type="f" corresp="#s4:l4">sinnen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Met haer hert’ en <rhyme label="c" type="f" corresp="#s4:l4">sinnen</rhyme>:</l>
        <l id="s4:l7" met="3" type="+-">Ick sal troost <rhyme label="b" type="m" corresp="#s4:l3">ontfaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
