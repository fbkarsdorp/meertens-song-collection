<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>185234</id>
    <date>
      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>de rijp</orginal-name>
      <standard-name>De Rijp, The Netherlands</standard-name>
      <coordinates>
        <lon>52.5548999</lon>
        <lat>4.8440884</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Nun freut euch liebe Christen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Waert dat ghy vost in u <rhyme label="a" type="m">gemoet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">De Liefde Godts <rhyme label="b" type="f">versinnen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy sout met blyder herten <rhyme label="a" type="m" corresp="#s1:l1">soet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hem vierighlijck <rhyme label="b" type="f" corresp="#s1:l2">beminnen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Want ghy doch geen volmaekter <rhyme label="c" type="m">vreugt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Dan in den Heere vinden <rhyme label="c" type="m" corresp="#s1:l5">meught</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Sy weten ‘t die ‘t <rhyme label="b" type="f" corresp="#s1:l2">bevinnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gelt, goet, en eer, het schijnt wel <rhyme label="a" type="m">yet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Als of het vreught wou <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer in hem selven isset <rhyme label="a" type="m" corresp="#s2:l1">niet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">‘t Brenght menigh mensch in <rhyme label="b" type="f" corresp="#s2:l2">sneven</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Soeckt yemant meer dan hy <rhyme label="c" type="m">behoeft</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Met commer wort sijn hert <rhyme label="c" type="m" corresp="#s2:l5">bedroeft</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En ‘t maeckt een treurigh <rhyme label="b" type="f" corresp="#s2:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">‘t Hoochmoedigh leven heeft wat <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Daer toe den lust der <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Maer die het meynt genucht te <rhyme label="a" type="m" corresp="#s3:l1">sijn</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die worter deur <rhyme label="b" type="f" corresp="#s3:l2">bedroghen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Van buyten vreught van binnen <rhyme label="c" type="m">quel</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Wat isset anders dan een <rhyme label="c" type="m" corresp="#s3:l5">hel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En een onrustigh <rhyme label="b" type="f" corresp="#s3:l2">pooghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer in het Godtlijck wesen <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Daer hebt ghy alle <rhyme label="b" type="f">dingen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Volcomen wensch voor u <rhyme label="a" type="m" corresp="#s4:l1">ghemoet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Men hoefter niet te <rhyme label="b" type="f" corresp="#s4:l2">bringen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Daer vloeyt van selfs een vreucht <rhyme label="c" type="m">fonteyn</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Wt d’eeuwigheyt ghevloten <rhyme label="c" type="m" corresp="#s4:l5">reyn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Met een ghedurigh <rhyme label="b" type="f" corresp="#s4:l2">springhen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Van al wat hier u gerte <rhyme label="a" type="m">lust</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Vint ghy in Godt <rhyme label="b" type="f">volcomen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Schoonheyt, gemack, en soete <rhyme label="a" type="m" corresp="#s5:l1">rust</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Of watmen soude <rhyme label="b" type="f" corresp="#s5:l2">noemen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Siet ghy hier yet dat u <rhyme label="c" type="m">behaeght</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Denckt dat het die figure <rhyme label="c" type="m" corresp="#s5:l5">draeght</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Van ‘s levens soete <rhyme label="b" type="f" corresp="#s5:l2">stroomen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Went u ghemoet in <rhyme label="a" type="m">d’eeuwigheyt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Drinckt uyt der liefden <rhyme label="b" type="f">vaten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Het wesen selfs is u <rhyme label="a" type="m" corresp="#s6:l1">bereyt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wilt ghy de schadu <rhyme label="b" type="f" corresp="#s6:l2">laten</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Brenght in den Geest al uwe <rhyme label="c" type="m">kracht</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">V wert van boven <rhyme label="c" type="m" corresp="#s6:l5">toegebracht</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Een blyschap boven <rhyme label="b" type="f" corresp="#s6:l2">maten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Godts eygenschappen soet en <rhyme label="a" type="m">rijck</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Geven haer milde <rhyme label="b" type="f">stralen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Van reyne waerheyt doen sy <rhyme label="a" type="m" corresp="#s7:l1">blijck</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Als sy in ‘t herte <rhyme label="b" type="f" corresp="#s7:l2">dalen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Dus soo ghy lust en vreucht <rhyme label="c" type="m">begeert</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">In dit volcomen wesen <rhyme label="c" type="m" corresp="#s7:l5">keert</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Wilt daer ghenuchte <rhyme label="b" type="f" corresp="#s7:l2">halen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
