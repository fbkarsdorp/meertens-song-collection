  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ACh ! Jesu, Heer, hoort mijn <rhyme label="a" type="m">gheklagh</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die ick dus bangh nu dagh aen <rhyme label="a" type="m" corresp="#s1:l1">dagh</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Schrey met bedroefde <rhyme label="b" type="f">tranen</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Och ! liefste Lief, mijn Godt, mijn <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ick legh hier voor u <rhyme label="c" type="m" corresp="#s1:l4">ne'er</rhyme></l>
        <l id="s1:l6" met="3" type="-+">U op u liefde <rhyme label="b" type="f" corresp="#s1:l3">manen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sal ick u Lief, u herts <rhyme label="a" type="m">Vriendin</rhyme> ?</l>
        <l id="s2:l2" met="4" type="-+">Die ghy eerst swoer u trouwe <rhyme label="a" type="m" corresp="#s2:l1">Min</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Nu van u zyn <rhyme label="b" type="f">vergheten</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Sal ick van 't Overspeeligh <rhyme label="c" type="m">zaedt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Dat u Gheboden <rhyme label="c" type="m" corresp="#s2:l4">haet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Nu stadigh zyn <rhyme label="b" type="f" corresp="#s2:l3">verbeten</rhyme> ?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hoe langh sal bangher sorgh, en <rhyme label="a" type="m">smert</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Haer leger houden om mijn <rhyme label="a" type="m" corresp="#s3:l1">hert</rhyme> ?</l>
        <l id="s3:l3" met="3" type="-+">Ja stadigh my <rhyme label="b" type="f">bestrijden</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">Wanneer sal zyn den soeten <rhyme label="c" type="m">tijdt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat ick van u <rhyme label="c" type="m" corresp="#s3:l4">bevrijdt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">My eeuwigh sal <rhyme label="b" type="f" corresp="#s3:l3">verblijden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick legh, ick ga, ick rust, ick <rhyme label="a" type="m">loop</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ick overlegh, ick vrees, ick <rhyme label="a" type="m" corresp="#s4:l1">hoop</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Ghy zijt steeds in mijn <rhyme label="b" type="f">sinnen</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Ghy zijt mijn vreucht, mijn hooghste <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Och ! laet ick meer, en <rhyme label="c" type="m" corresp="#s4:l4">meer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">My selven <rhyme label="b" type="f" corresp="#s4:l3">overwinnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ey siet ! hoe dit verbastert <rhyme label="a" type="m">rot</rhyme></l>
        <l id="s5:l2" met="4" type="-+">My om mijn yver staegh <rhyme label="a" type="m" corresp="#s5:l1">bespot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Met vuyl en schamper <rhyme label="b" type="f">spreecken</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">Ja ! quetsen oock u <rhyme label="c" type="m">Majesteyt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">En last'ren u <rhyme label="c" type="m" corresp="#s5:l4">beleyt</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Ach ! 't hert dunckt my te <rhyme label="b" type="f" corresp="#s5:l3">breecken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ick stel mijn hert u, Heer, te <rhyme label="a" type="m">voor</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Beproevet door en <rhyme label="a" type="m" corresp="#s6:l1">weder-door</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Ghy weet hoe ick <rhyme label="b" type="f">aendachtigh</rhyme></l>
        <l id="s6:l4" met="4" type="-+">U eer, o ! Heer, soeck langhs hoe <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Gheen grooter goedt <rhyme label="c" type="m" corresp="#s6:l4">begeer</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Hert, en tongh zyn <rhyme label="b" type="f" corresp="#s6:l3">eendrachtigh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoe lustigh is 't, en <rhyme label="a" type="m">over-soet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Wanneer een wel bewust <rhyme label="a" type="m" corresp="#s7:l1">ghemoedt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Kan boven 't sienlijck <rhyme label="b" type="f">stralen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En noyt door geen ghemeenen <rhyme label="c" type="m">waen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Hem niet en laet <rhyme label="c" type="m" corresp="#s7:l4">verra'en</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Met 's Werelts volck te <rhyme label="b" type="f" corresp="#s7:l3">dwalen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laet yeder segghen wat hy <rhyme label="a" type="m">wil</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ick sal geduldigh swijghen <rhyme label="a" type="m" corresp="#s8:l1">stil</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ey ! troost my in mijn <rhyme label="b" type="f">lijden</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">O ! ghy, triumphelijcken <rhyme label="c" type="m">Heldt</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Laet my door u <rhyme label="c" type="m" corresp="#s8:l4">ghewelt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Als Overwinner <rhyme label="b" type="f" corresp="#s8:l3">strijden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wat hindert my den schimp en <rhyme label="a" type="m">spot</rhyme> ?</l>
        <l id="s9:l2" met="4" type="-+">Wanneer ick u, mijn Heer, mijn <rhyme label="a" type="m" corresp="#s9:l1">Godt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Mach hebben tot een <rhyme label="b" type="f">eerder</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Van u, o ! Heere, daelt mijn <rhyme label="c" type="m">lof</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Ghy gheeft my altijdt <rhyme label="c" type="m" corresp="#s9:l4">stof</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Om u te dienen <rhyme label="b" type="f" corresp="#s9:l3">Meerder</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
