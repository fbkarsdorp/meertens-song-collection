  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">LIeve <rhyme label="a" type="f">nachjes</rhyme>!</l>
        <l id="s1:l2" met="6" type="-+">Gy die getuige van mijn trouwe minne <rhyme label="b" type="m">zijt</rhyme>;</l>
        <l id="s1:l3" met="2" type="+-">Mijn <rhyme label="a" type="f" corresp="#s1:l1">gedachjes</rhyme>,</l>
        <l id="s1:l4" met="6" type="-+">Mijn ziel, mijn hert, mijn zinnen zijn uw <rhyme label="b" type="m" corresp="#s1:l2">toegewijt</rhyme>;</l>
        <l id="s1:l5" met="2" type="+-">Ach! hoe <rhyme label="c" type="m">vaek</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Zoekt de liefde liefds <rhyme label="c" type="m" corresp="#s1:l5">vermaek</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Met ziel en <rhyme label="d" type="f">zinne</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">O aerdsch <rhyme label="d" type="f" corresp="#s1:l7">Godinne</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Op 't soetste <rhyme label="d" type="f" corresp="#s1:l7">minne</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Te voeden in de <rhyme label="e" type="m">nacht</rhyme>,</l>
        <l id="s1:l11" met="5" type="+-">Met liefd', met liefd',. met liefde mijn <rhyme label="e" type="m" corresp="#s1:l10">gedacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Als de <rhyme label="a" type="f">Reye</rhyme></l>
        <l id="s2:l2" met="6" type="-+">De nacht-Godin Diana, met een Hemels <rhyme label="b" type="m">stoet</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">Doet <rhyme label="a" type="f" corresp="#s2:l1">geleye</rhyme>,</l>
        <l id="s2:l4" met="6" type="-+">Ter plaets, daar haar Aurora met goe morgen <rhyme label="b" type="m" corresp="#s2:l2">groet</rhyme>;</l>
        <l id="s2:l5" met="2" type="+-">Doet gy <rhyme label="c" type="m">mijn</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Voor dag en <rhyme label="c" type="m" corresp="#s2:l5">Zonne-schijn</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Uyt liefde <rhyme label="d" type="f">komen</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Aen d' <rhyme label="d" type="f" corresp="#s2:l7">Amstelstroomen</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Wiens <rhyme label="d" type="f" corresp="#s2:l7">Linde-boomen</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">En hoog getooyde <rhyme label="e" type="m">blaan</rhyme>,</l>
        <l id="s2:l11" met="5" type="+-">Mijn klagt, mijn klagt, mijn klagten horen <rhyme label="e" type="m" corresp="#s2:l10">aen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Groene <rhyme label="a" type="f">linde</rhyme></l>
        <l id="s3:l2" met="6" type="-+">Gy die mijn minne-klaghjes als een Echo <rhyme label="b" type="m">meld</rhyme>.</l>
        <l id="s3:l3" met="2" type="+-">Aan 't <rhyme label="a" type="f" corresp="#s3:l1">geminde</rhyme>,</l>
        <l id="s3:l4" met="6" type="-+">Wanneer gy uwe takjes, naar haar venster <rhyme label="b" type="m" corresp="#s3:l2">helt</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">En <rhyme label="c" type="m">gevoelt</rhyme> //</l>
        <l id="s3:l6" met="4" type="-+">een lieffelijke <rhyme label="c" type="m" corresp="#s3:l5">koelt</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Mijn sinnen <rhyme label="d" type="f">juygen</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">U takjes <rhyme label="d" type="f" corresp="#s3:l7">buygen</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Om te <rhyme label="d" type="f" corresp="#s3:l7">getuygen</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Mijn minne aan die <rhyme label="e" type="m">geen</rhyme></l>
        <l id="s3:l11" met="5" type="+-">Wiens ziel, wiens ziel, van my wordt <rhyme label="e" type="m" corresp="#s3:l10">aangebeen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
