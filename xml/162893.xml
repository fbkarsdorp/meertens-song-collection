  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">De Vorsten uyt het Moabs <rhyme label="a" type="m">Landt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Vertoonden op haer open <rhyme label="a" type="m" corresp="#s1:l1">handt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Een som van blinckend <rhyme label="b" type="m">Toover-loon</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Op dat soo door die glans seer <rhyme label="b" type="m" corresp="#s1:l3">schoon</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soud Biliam <rhyme label="c" type="f">beweghen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Om Isr'el met een bitt'ren <rhyme label="d" type="m">vloeck</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Te slaen, in plaets van <rhyme label="c" type="f" corresp="#s1:l5">zeghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Wereldt singht de selfde <rhyme label="a" type="m">toon</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En Spiegelt met het <rhyme label="a" type="m" corresp="#s2:l1">Sonden-loon</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En biedt aen yder die haer <rhyme label="b" type="m">kust</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Een blinckend schuym van yd'le <rhyme label="b" type="m" corresp="#s2:l3">lust</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat in de ziel set <rhyme label="c" type="f">smetten</rhyme>:</l>
        <l id="s2:l6" met="4" type="-+">Maer alle ghy, die Gode <rhyme label="d" type="m">vreest</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Kruypt noyt in 's Wereldts <rhyme label="c" type="f" corresp="#s2:l5">Netten</rhyme>.</l>
      </lg>
    </lg>
  </text>
