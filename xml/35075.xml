    <melody>Les dieux nous ont formé</melody>
    <categories>
      <category translation="amusement">vermaak</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Les Dieux nous ont <rhyme label="a" type="m">formé</rhyme></l>
        <l id="s1:l2" met="3" type="-+">a leurs divins <rhyme label="b" type="f">images</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Les Dieux nous ont point <rhyme label="c" type="m">faits</rhyme></l>
        <l id="s1:l4" met="3" type="-+">pour etre malheureux <rhyme label="d" type="m">:SS</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">soions contents, soions <rhyme label="e" type="m">contents</rhyme></l>
        <l id="s1:l6" met="4" type="-+">reposons nous sur eux du <rhyme label="f" type="m">soin</rhyme></l>
        <l id="s1:l7" met="3" type="-+">de sauver leurs ouvrages <rhyme label="b" type="f" corresp="#s1:l2">:SS</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ils ont comte nos <rhyme label="a" type="m">jours</rhyme></l>
        <l id="s2:l2" met="3" type="-+">il nous faut les <rhyme label="b" type="f">encroire</rhyme></l>
        <l id="s2:l3" met="3" type="-+">ils ont comte nos <rhyme label="c" type="m">jours</rhyme></l>
        <l id="s2:l4" met="3" type="-+">et les ont arrete <rhyme label="d" type="m">:SS</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">sils sont comtez sils sont <rhyme label="e" type="m">comtez</rhyme></l>
        <l id="s2:l6" met="4" type="-+">ne les comtons dont plus les <rhyme label="f" type="m">jours</rhyme></l>
        <l id="s2:l7" met="3" type="-+">ne les passons qu'a boire <rhyme label="b" type="f" corresp="#s2:l2">:SS</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">pour vivre en plain <rhyme label="a" type="m">repos</rhyme></l>
        <l id="s3:l2" met="3" type="-+">que lamour nous <rhyme label="b" type="f">rasemble</rhyme></l>
        <l id="s3:l3" met="3" type="-+">mais sans eclater <rhyme label="c" type="m">trop</rhyme></l>
        <l id="s3:l4" met="3" type="-+">nos tendres mouvements <rhyme label="d" type="m">:SS</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">aimons beuvons, beuvons <rhyme label="e" type="m">aimons</rhyme></l>
        <l id="s3:l6" met="4" type="-+">nous rendrons plus touchants nos <rhyme label="f" type="m">gouts</rhyme></l>
        <l id="s3:l7" met="3" type="-+">joignant le tout <rhyme label="b" type="f" corresp="#s3:l2">ensemble</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">amour comte ses <rhyme label="a" type="m">coups</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Bacchus jamais les <rhyme label="b" type="f">comte</rhyme></l>
        <l id="s4:l3" met="3" type="-+">ce dieu sans <rhyme label="c" type="m">calcules</rhyme></l>
        <l id="s4:l4" met="3" type="-+">satisfait nos desirs <rhyme label="d" type="m">:SS</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">sans calculer, sans <rhyme label="e" type="m">calculer</rhyme></l>
        <l id="s4:l6" met="4" type="-+">recevoir des paisirs, vaut <rhyme label="f" type="m">mieux</rhyme></l>
        <l id="s4:l7" met="3" type="-+">que d en avoir par comte <rhyme label="b" type="f" corresp="#s4:l2">:SS</rhyme>:</l>
      </lg>
    </lg>
  </text>
</song>
