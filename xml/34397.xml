  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HOort eens minnaers van den <rhyme label="a" type="m">dranck</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wiens buycxkens noit <rhyme label="b" type="f">beclijven</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Mits ghy derven de <rhyme label="a" type="m" corresp="#s1:l1">bier-banck</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Moet om u vroukens <rhyme label="b" type="f" corresp="#s1:l2">kijven</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">En ghy Hannens die daer <rhyme label="c" type="m">smeert</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Selden t'keeltjen dat my <rhyme label="c" type="m" corresp="#s1:l5">deert</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Als ghy moet spinnen aen den <rhyme label="c" type="m" corresp="#s1:l5">eert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Luystert, k'weet u eenen <rhyme label="a" type="m">vont</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Waer door ghy wordt <rhyme label="b" type="f">onslaghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En waer me ghy fraeykens <rhyme label="a" type="m" corresp="#s2:l1">cont</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gaen drincken sonder <rhyme label="b" type="f" corresp="#s2:l2">vraeghen</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Dats de Wacht die nutte <rhyme label="c" type="m">Wacht</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Daer ghy op moet nemen <rhyme label="c" type="m" corresp="#s2:l5">acht</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">VVant veel ghenuchten sy ons <rhyme label="c" type="m" corresp="#s2:l5">bracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Siet hier maeckt men goede <rhyme label="a" type="m">cier</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Men speelter een <rhyme label="b" type="f">verkeerken</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En men drinckter nobel <rhyme label="a" type="m" corresp="#s3:l1">bier</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Men leefter als een <rhyme label="b" type="f" corresp="#s3:l2">Heerken</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Snuyven, smooren isser <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Knouwen men niet derven <rhyme label="c" type="m" corresp="#s3:l5">moet</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">t'Wijf sal niet kijven, wat m'hier <rhyme label="c" type="m" corresp="#s3:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Den Tamboer die drol'ghe <rhyme label="a" type="m">guyt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Om bier den Weert gaet <rhyme label="b" type="f">wecken</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Drinckt hy t'half op wech dan <rhyme label="a" type="m" corresp="#s4:l1">uyt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hy seyt den pot moet <rhyme label="b" type="f" corresp="#s4:l2">lecken</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Dies staet met sijn trommel <rhyme label="c" type="m">ré</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Die hy decken gaet in <rhyme label="c" type="m" corresp="#s4:l5">sté</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Ons van een tafel, sa gaet <rhyme label="c" type="m" corresp="#s4:l5">mé</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">t'Is hier lustich om te <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Men smeerter brav' sijn <rhyme label="b" type="f">buycxken</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Somtijts bier; en somtijts <rhyme label="a" type="m" corresp="#s5:l1">wijn</rhyme></l>
        <l id="s5:l4" met="3" type="-+">t'Is maer den man een <rhyme label="b" type="f" corresp="#s5:l2">cruycxken</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Hier is menich viesen <rhyme label="c" type="m">haen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">d'Een die gaet aen t'vierken <rhyme label="c" type="m" corresp="#s5:l5">staen</rhyme></l>
        <l id="s5:l7" met="4" type="-+">En d'ander vaeck'rich slaepen <rhyme label="c" type="m" corresp="#s5:l5">gaen</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Cappiteyn oft <rhyme label="a" type="m">Luytenant</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">t'Sy wie ons comt <rhyme label="b" type="f">besichten</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Soo Alpheris, als <rhyme label="a" type="m" corresp="#s6:l1">Sergiaent</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hy moet sijn bors wat <rhyme label="b" type="f" corresp="#s6:l2">lichten</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Den Tamboer gaet dan om <rhyme label="c" type="m">bier</rhyme></l>
        <l id="s6:l6" met="4" type="+-">En wy maecken weer goet <rhyme label="c" type="m" corresp="#s6:l5">cier</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Soo dat de Wacht is ons <rhyme label="c" type="m" corresp="#s6:l5">plaisier</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Prince die den dranck <rhyme label="a" type="m">bemint</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt dit voor t'lest <rhyme label="b" type="f">onthouwen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Als ghy hoort den <rhyme label="a" type="m" corresp="#s7:l1">Trommel-vrint</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Maeckt wijs dan aen u <rhyme label="b" type="f" corresp="#s7:l2">vrouwen</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Dat ghy sien gaet naer de <rhyme label="c" type="m">Wacht</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">In u vuyst al soetiens <rhyme label="c" type="m" corresp="#s7:l5">lacht</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Dus gaet vermaecken t'droef <rhyme label="c" type="m" corresp="#s7:l5">ghedacht</rhyme>.</l>
      </lg>
    </lg>
  </text>
