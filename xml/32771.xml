    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody>Nadien uw goddelijkheid</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Weerdich Heyligh <rhyme label="a" type="m">Cruys</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Waer voor het helsch <rhyme label="a" type="m" corresp="#s1:l1">gespuys</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Met vreese moet gaen <rhyme label="b" type="f">vluchten</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Maeckt doch mijn ziel <rhyme label="c" type="m">bevrijdt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En verkeert in <rhyme label="b" type="f" corresp="#s1:l3">genuchten</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Al wat my tegen <rhyme label="c" type="m" corresp="#s1:l4">strijdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghy zijt het nutbaer <rhyme label="a" type="m">hout</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daer Christus seer <rhyme label="a" type="m" corresp="#s2:l1">benout</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Voor ons aen wilde <rhyme label="b" type="f">sterven</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Soo dat wy door sijn <rhyme label="c" type="m">doodt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Weer het leven <rhyme label="b" type="f" corresp="#s2:l3">be-erven</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In alle <rhyme label="c" type="m" corresp="#s2:l4">tegen-stoot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O boom, o levens <rhyme label="a" type="m">boom</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Die sonder maet oft <rhyme label="a" type="m" corresp="#s3:l1">toom</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Loopt over van <rhyme label="b" type="f">genade</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Aen u heeft ons <rhyme label="c" type="m">Fonteyn</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Door Goddelijcke <rhyme label="b" type="f" corresp="#s3:l3">rade</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ghevloeyt die ons maeckt <rhyme label="c" type="m" corresp="#s3:l4">reyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy zijt vol <rhyme label="a" type="m">weerdigheydt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Om dat Godts <rhyme label="a" type="m" corresp="#s4:l1">Majesteyt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Aen u heeft willen <rhyme label="b" type="f">lijden</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Den vijandt voor u <rhyme label="c" type="m">beeft</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die ons ziel compt <rhyme label="b" type="f" corresp="#s4:l3">bestrijden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Als sy in rusten <rhyme label="c" type="m" corresp="#s4:l4">leeft</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Lof Standaert vol van <rhyme label="a" type="m">deught</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die Helena met <rhyme label="a" type="m" corresp="#s5:l1">vreught</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Tot ons geluck heeft <rhyme label="b" type="f">vonden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Waer med' dat wy <rhyme label="c" type="m">behoet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En verlost zijn van <rhyme label="b" type="f" corresp="#s5:l3">sonden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Voor Christi dierbaer <rhyme label="c" type="m" corresp="#s5:l4">Bloedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
