  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="1" type="-+"><rhyme label="a" type="f">OHeere</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Weerdigh alle <rhyme label="a" type="f" corresp="#s1:l1">eere</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Eenigh, alle <rhyme label="b" type="m">goet</rhyme>!</l>
        <l id="s1:l4" met="4" type="-+">Ach oft ick cost op staenden <rhyme label="b" type="m" corresp="#s1:l3">voet</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Van sonden <rhyme label="c" type="f">wachten</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">De deught <rhyme label="c" type="f" corresp="#s1:l5">betrachten</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Voort-aen u <rhyme label="c" type="f" corresp="#s1:l5">achten</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Soo een Christen <rhyme label="b" type="m" corresp="#s1:l3">moet</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="1" type="-+">Vaert <rhyme label="a" type="f">vreughden</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Die zijt sonder <rhyme label="a" type="f" corresp="#s2:l1">deughden</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Vaert Ã´ aerdtsch <rhyme label="b" type="m">ghenucht</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ick neme nu van u de <rhyme label="b" type="m" corresp="#s2:l3">vlucht</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">U wil ick <rhyme label="c" type="f">staecken</rhyme>;</l>
        <l id="s2:l6" met="2" type="-+">Want al't <rhyme label="c" type="f" corresp="#s2:l5">vermaecken</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Van aerdtsche <rhyme label="c" type="f" corresp="#s2:l5">saecken</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Brenght voort sucht op <rhyme label="b" type="m" corresp="#s2:l3">sucht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="1" type="-+">Vaert <rhyme label="a" type="f">wereldt</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Die soo schynt <rhyme label="a" type="f" corresp="#s3:l1">bepereldt</rhyme>;</l>
        <l id="s3:l3" met="3" type="+-">'t Is maer eenen <rhyme label="b" type="m">schyn</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Al dat ghy hebt door gansch uw' <rhyme label="b" type="m" corresp="#s3:l3">pleyn</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Onder uw' <rhyme label="c" type="f">Bende</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Waer ick my <rhyme label="c" type="f" corresp="#s3:l5">wende</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Niet dan <rhyme label="c" type="f" corresp="#s3:l5">ellende</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Staegh vindt ick te <rhyme label="b" type="m" corresp="#s3:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="1" type="-+">'k Gaen <rhyme label="a" type="f">vinden</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Godt mynen <rhyme label="a" type="f" corresp="#s4:l1">beminden</rhyme>;</l>
        <l id="s4:l3" met="3" type="+-">Hy alleen die <rhyme label="b" type="m">blust</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Al mijnen appetyt, en <rhyme label="b" type="m" corresp="#s4:l3">lust</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">'k Wil 't al <rhyme label="c" type="f">begheven</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Om heel myn <rhyme label="c" type="f" corresp="#s4:l5">leven</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Hem aen te <rhyme label="c" type="f" corresp="#s4:l5">cleven</rhyme>:</l>
        <l id="s4:l8" met="3" type="+-">Want hy is myn <rhyme label="b" type="m" corresp="#s4:l3">rust</rhyme>.</l>
      </lg>
    </lg>
  </text>
