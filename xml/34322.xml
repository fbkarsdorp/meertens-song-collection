    <melody>Een ridder en een meisje jong</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als ick de liefde eens mach <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">So is mijn harteken met vreught <rhyme label="b" type="m">bevaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En ick hier vry ben, van die <rhyme label="a" type="f" corresp="#s1:l1">ghebreken</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Soo vloedt der minne vloedt also <rhyme label="b" type="m" corresp="#s1:l2">zaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De liefde moet ons leytsman <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Al tot den Vader door de Soon <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die hier nu leeft in liefde <rhyme label="a" type="f" corresp="#s2:l1">ghepresen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Door 't minnen wordt hy in <rhyme label="b" type="m" corresp="#s2:l2">gheleyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In de over-hooghe <rhyme label="a" type="f">Triniteyt</rhyme>:</l>
        <l id="s3:l2" met="4" type="-+">Een oorsprong sonder alle <rhyme label="b" type="m">begin</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">O clare simpele <rhyme label="a" type="f" corresp="#s3:l1">eenicheyt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Daer alle dingen swemmen <rhyme label="b" type="m" corresp="#s3:l2">in</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O eenich een ghy staet soo <rhyme label="a" type="f">bloot</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Van alle namen <rhyme label="b" type="m">onbevaen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Waer mijn Ziel doot in uwen <rhyme label="a" type="f" corresp="#s4:l1">schoot</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Zoo waer mijn trueren al <rhyme label="b" type="m" corresp="#s4:l2">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O eewich ongeschapen <rhyme label="a" type="f">goet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Geeft my beken in dijn <rhyme label="b" type="m">aenschijn</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Wat ghy de liefste vrienden <rhyme label="a" type="f" corresp="#s5:l1">doet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die in v hooghste minne <rhyme label="b" type="m" corresp="#s5:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy zijt: dat rijck der Zielen <rhyme label="a" type="f">mijn</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Gheen hert en kant ghenoech <rhyme label="b" type="m">verstaen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Weest mijn onthout, gheeft my vande <rhyme label="a" type="f" corresp="#s6:l1">wijn</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Der minnen, daer ghy haer in doet <rhyme label="b" type="m" corresp="#s6:l2">baen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die Engelen die, daer boven <rhyme label="a" type="f">zijn</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Zy bernen  al, inder minnen <rhyme label="b" type="m">gloet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Want zy aensien, v soetste <rhyme label="a" type="f" corresp="#s7:l1">aenschijn</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In volheyts liefd', in liefde <rhyme label="b" type="m" corresp="#s7:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Zy zijn in vaste <rhyme label="a" type="f">sekerheyt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Aen uwe hooghste minne <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En daer en is geen <rhyme label="a" type="f" corresp="#s8:l1">anderheyt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Men pleeght daer liefd' in minne <rhyme label="b" type="m" corresp="#s8:l2">vroet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De Seraphinnen zijn soo <rhyme label="a" type="f">verklaert</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Door't hooghe minnen in v <rhyme label="b" type="m">aenschijn</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Och waer in my dat licht <rhyme label="a" type="f" corresp="#s9:l1">ghebaert</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En mocht ick haer ghenoten <rhyme label="b" type="m" corresp="#s9:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Prince ghy zijt, diet murch <rhyme label="a" type="f">verteert</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Ghy zijt der Siele <rhyme label="b" type="m">medecijn</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ghy zijt al dat mijn Siel <rhyme label="a" type="f" corresp="#s10:l1">begeert</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Och mochtse daer in verslonden <rhyme label="b" type="m" corresp="#s10:l2">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
