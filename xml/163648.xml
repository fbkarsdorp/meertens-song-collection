  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk voel mijn hert, o <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Ontsteecken, meer en <rhyme label="a" type="m" corresp="#s1:l1">meer</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Met uwe Liefd' en <rhyme label="b" type="f">Minne</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Uw' vlam en <rhyme label="c" type="m">liefde-gloedt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ontsteeckt mijn binnenst' <rhyme label="b" type="f" corresp="#s1:l3">binne</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En is my <rhyme label="c" type="m" corresp="#s1:l4">oversoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick heb mijns <rhyme label="a" type="m">herten-wensch</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wie ben ick nietigh <rhyme label="a" type="m" corresp="#s2:l1">Mensch</rhyme>!</l>
        <l id="s2:l3" met="3" type="-+">Dat ghy uw' <rhyme label="b" type="f">liefde-stroomen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Laet vloeyen, meer en <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En in mijn Ziele <rhyme label="b" type="f" corresp="#s2:l3">komen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Danck zy u liefste <rhyme label="c" type="m" corresp="#s2:l4">Heer</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Nu houw ick na den <rhyme label="a" type="m">geest</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met u mijn <rhyme label="a" type="m" corresp="#s3:l1">vreughde-feest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Nu is mijn Ziel aen 't <rhyme label="b" type="f">woelen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Nu is mijn hert <rhyme label="c" type="m">verblijdt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Nu ick uw' troost <rhyme label="b" type="f" corresp="#s3:l3">gevoele</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Lof zy u t' aller <rhyme label="c" type="m" corresp="#s3:l4">tijdt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Nooyt soeter voor 't <rhyme label="a" type="m">gemoedt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Als dees' uw' <rhyme label="a" type="m" corresp="#s4:l1">liefde-gloedt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Nooyt hadd' ick beter <rhyme label="b" type="f">dagen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als nu, in dit <rhyme label="c" type="m">onthael</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Nu ghy na uw <rhyme label="b" type="f" corresp="#s4:l3">behagen</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">Houwt met my <rhyme label="c" type="m" corresp="#s4:l4">Avondtmael</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Nu heb ick wat my <rhyme label="a" type="m">lust</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Nu wordt mijn Ziel <rhyme label="a" type="m" corresp="#s5:l1">gekust</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Van u, mijn <rhyme label="b" type="f">overschoone</rhyme>!</l>
        <l id="s5:l4" met="3" type="-+">Nu krijgh ick lieve <rhyme label="c" type="m">Heer</rhyme>!</l>
        <l id="s5:l5" met="3" type="-+">Uyt uw' <rhyme label="b" type="f" corresp="#s5:l3">Genade-troone</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Mijn Hert en <rhyme label="c" type="m" corresp="#s5:l4">Ziels-begeer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Mijn Hert, mijn Ziel, mijn <rhyme label="a" type="m">grondt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Kust nu uw' lieve <rhyme label="a" type="m" corresp="#s6:l1">mondt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">O Vader der <rhyme label="b" type="f">goedtheden</rhyme>!</l>
        <l id="s6:l4" met="3" type="-+">Nu hebt ghy my <rhyme label="c" type="m">verlient</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Daerom ick heb <rhyme label="b" type="f" corresp="#s6:l3">gebeden</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Danck zy u, lieve <rhyme label="c" type="m" corresp="#s6:l4">vriendt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Laet nu noch doodt, noch <rhyme label="a" type="m">hel</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Noch geenderley <rhyme label="a" type="m" corresp="#s7:l1">gequel</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dees' banden ooyt <rhyme label="b" type="f">verscheuren</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Maeck ghyse sterck en <rhyme label="c" type="m">vast</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Laet my dees' troost <rhyme label="b" type="f" corresp="#s7:l3">gebeuren</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">O lieve waerde <rhyme label="c" type="m" corresp="#s7:l4">gast</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Laet my nu zijn <rhyme label="a" type="m">gemeen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Met u, en anders <rhyme label="a" type="m" corresp="#s8:l1">geen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Mijn liefste Lief, vol <rhyme label="b" type="f">waerde</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ick vraegh in mijn <rhyme label="c" type="m">gemoedt</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Na Hemel, noch na <rhyme label="b" type="f" corresp="#s8:l3">Aerde</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Als ghy mijn bee <rhyme label="c" type="m" corresp="#s8:l4">voldoet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Als maer uw' <rhyme label="a" type="m">liefde-gloedt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">My stadigh queeckt en <rhyme label="a" type="m" corresp="#s9:l1">voedt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">My voort en voort komt <rhyme label="b" type="f">stijven</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Niets niet my schaden <rhyme label="c" type="m">sel</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Dus laet uw' liefde <rhyme label="b" type="f" corresp="#s9:l3">blijven</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">O mijn <rhyme label="c" type="m" corresp="#s9:l4">Emanuel</rhyme>!</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Uw' liefd' in 't hert <rhyme label="a" type="m">geraeckt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Mijn binnenst gaende <rhyme label="a" type="m" corresp="#s10:l1">maeckt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Mijn Ziele doet <rhyme label="b" type="f">verlangen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Om in uw' <rhyme label="c" type="m">Opper-sael</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Van u te zijn <rhyme label="b" type="f" corresp="#s10:l3">ontfangen</rhyme></l>
        <l id="s10:l6" met="3" type="-+">By d' Eng'len <rhyme label="c" type="m" corresp="#s10:l4">altemael</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Mijn Ziel spreeckt: lieve <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s11:l2" met="3" type="-+">Wanneer? wanneer? <rhyme label="a" type="m" corresp="#s11:l1">wanneer</rhyme>?</l>
        <l id="s11:l3" met="3" type="-+">Wanneer sal ick eens <rhyme label="b" type="f">koomen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">By u? mijn <rhyme label="c" type="m">Bruydegom</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Tot uw' levende <rhyme label="b" type="f" corresp="#s11:l3">stroomen</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Hoe komt de tijdt noch <rhyme label="c" type="m" corresp="#s11:l4">om</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Och mocht dit eens <rhyme label="a" type="m">geschien</rhyme>!</l>
        <l id="s12:l2" met="3" type="-+">Dat ick u haest moch <rhyme label="a" type="m" corresp="#s12:l1">sien</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Mijn Lief, mijn <rhyme label="b" type="f">overschoone</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Dat ick in 't <rhyme label="c" type="m">Heylighdom</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Mocht eeuwigh by u <rhyme label="b" type="f" corresp="#s12:l3">woonen</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Ey Heere Jesu <rhyme label="c" type="m" corresp="#s12:l4">kom</rhyme>!</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Kom doe my dit <rhyme label="a" type="m">geleyd'</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Na dese <rhyme label="a" type="m" corresp="#s13:l1">eeuwigheydt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Mijn vriendt! laet my <rhyme label="b" type="f">aenschouwen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">U, en uw lief <rhyme label="c" type="m">onthael</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Laet my met u doch <rhyme label="b" type="f" corresp="#s13:l3">houwen</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Uw vreughdigh <rhyme label="c" type="m" corresp="#s13:l4">Avondtmael</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Dit is het eenighst <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Dit is 't, en anders <rhyme label="a" type="m" corresp="#s14:l1">geen</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Dat ick van u <rhyme label="b" type="f">begeere</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Dus o mijn waerde <rhyme label="c" type="m">vriendt</rhyme>!</l>
        <l id="s14:l5" met="3" type="-+">Mijn alderliefste <rhyme label="b" type="f" corresp="#s14:l3">Heere</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Dit eeuwigh my <rhyme label="c" type="m" corresp="#s14:l4">verlient</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
