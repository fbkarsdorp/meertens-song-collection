    <date>
      <year-start>1720</year-start>
      <year-end>1720</year-end>
    </date>
    <location>
      <orginal-name>leiden</orginal-name>
      <standard-name>Leiden, The Netherlands</standard-name>
      <coordinates>
        <lon>52.1598645</lon>
        <lat>4.4824271</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Is liefde zoet lijden</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1">De tyden</l>
        <l id="s1:l2">Van lyden</l>
        <l id="s1:l3">Verblyden</l>
        <l id="s1:l4">Ons niet:</l>
        <l id="s1:l5">Maar kroonen</l>
        <l id="s1:l6">En throonen</l>
        <l id="s1:l7">Beloonen</l>
        <l id="s1:l8">'t Verdriet.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1">Geef, Heere!</l>
        <l id="s2:l2">Die eere;</l>
        <l id="s2:l3">'k Begeere</l>
        <l id="s2:l4">Niet meer:</l>
        <l id="s2:l5">Dan zal men</l>
        <l id="s2:l6">U psalmen</l>
        <l id="s2:l7">Toegalmen</l>
        <l id="s2:l8">Tot eer.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1">Uw' tuchten</l>
        <l id="s3:l2">Geeft vruchten.</l>
        <l id="s3:l3">Myn zuchten</l>
        <l id="s3:l4">Is: Ach!</l>
        <l id="s3:l5">Dat vroede</l>
        <l id="s3:l6">Uw' roede</l>
        <l id="s3:l7">Ten goede</l>
        <l id="s3:l8">Zyn mag.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1">'k Wil dragen</l>
        <l id="s4:l2">Uw' plagen</l>
        <l id="s4:l3">En slagen,</l>
        <l id="s4:l4">Als gy</l>
        <l id="s4:l5">Wilt sterken,</l>
        <l id="s4:l6">Bewerken,</l>
        <l id="s4:l7">Beperken,</l>
        <l id="s4:l8">Hoe 't zy.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1">Na dezen</l>
        <l id="s5:l2">Zal wezen</l>
        <l id="s5:l3">Geen vreezen</l>
        <l id="s5:l4">Noch traan:</l>
        <l id="s5:l5">Maar weenen</l>
        <l id="s5:l6">En steenen</l>
        <l id="s5:l7">Zyn heenen</l>
        <l id="s5:l8">Gegaan.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1">Zyn klachten,</l>
        <l id="s6:l2">Het wachten,</l>
        <l id="s6:l3">En nachten</l>
        <l id="s6:l4">Nu zwaar;</l>
        <l id="s6:l5">'t Verhoogen,</l>
        <l id="s6:l6">En 't droogen</l>
        <l id="s6:l7">Der oogen</l>
        <l id="s6:l8">Is daar.</l>
      </lg>
    </lg>
  </text>
</song>
