    <melody>Ik lijd in het hart pijn ongewoon</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="1" type="-+">O <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Wy vergrammen u <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Als wy u <rhyme label="b" type="f">raden</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Wet of <rhyme label="b" type="f" corresp="#s1:l3">genaden</rhyme></l>
        <l id="s1:l5" met="5" type="-+">Met woorden, wercken ofte wil <rhyme label="b" type="f" corresp="#s1:l3">versmaden</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Brengh tarruw voort wel <rhyme label="c" type="m">kaf</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Hoe veel te meer de <rhyme label="c" type="m" corresp="#s1:l6">straf</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Onse <rhyme label="b" type="f" corresp="#s1:l3">misdaden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="1" type="-+">O <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Dat ghy liefde <rhyme label="a" type="m" corresp="#s2:l1">teer</rhyme></l>
        <l id="s2:l3" met="2" type="-+">In dese <rhyme label="b" type="f">tijde</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Stelt aen een <rhyme label="b" type="f" corresp="#s2:l3">sijde</rhyme>,</l>
        <l id="s2:l5" met="5" type="-+">En ons om onse sonden doet <rhyme label="b" type="f" corresp="#s2:l3">castijde</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">'t Is tegens u <rhyme label="c" type="m">gemoet</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Onse boosheyt dit <rhyme label="c" type="m" corresp="#s2:l6">doet</rhyme>;</l>
        <l id="s2:l8" met="2" type="-+">Soo wy <rhyme label="b" type="f" corresp="#s2:l3">belijde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="1" type="-+">O <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Wy hebben verdient <rhyme label="a" type="m" corresp="#s3:l1">meer</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Om onse <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Als ghy <rhyme label="b" type="f" corresp="#s3:l3">gesonden</rhyme></l>
        <l id="s3:l5" met="5" type="-+">Hebt plagen en straffen tot deser <rhyme label="b" type="f" corresp="#s3:l3">stonden</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Hoe stijf u handt ons <rhyme label="c" type="m">slaet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Niet is de slagh by 't <rhyme label="c" type="m" corresp="#s3:l6">quaet</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">In ons <rhyme label="b" type="f" corresp="#s3:l3">gevonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="1" type="-+">O <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Wy nemen onse <rhyme label="a" type="m" corresp="#s4:l1">keer</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Tot u, en <rhyme label="b" type="f">klagen</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Dat wy veel <rhyme label="b" type="f" corresp="#s4:l3">dagen</rhyme></l>
        <l id="s4:l5" met="5" type="-+">Hebben besteet tegens u wel <rhyme label="b" type="f" corresp="#s4:l3">behagen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wy bidden met <rhyme label="c" type="m">ootmoet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Onse schult met u <rhyme label="c" type="m" corresp="#s4:l6">bloedt</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Wilt heel uyt <rhyme label="b" type="f" corresp="#s4:l3">vagen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="1" type="-+">O <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s5:l2" met="3" type="-+">Doet ons al ghy wel <rhyme label="a" type="m" corresp="#s5:l1">eer</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Aen Petrus <rhyme label="b" type="f">dede</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Magdaleen <rhyme label="b" type="f" corresp="#s5:l3">mede</rhyme>,</l>
        <l id="s5:l5" met="5" type="-+">Manasses, en Ninive vol <rhyme label="b" type="f" corresp="#s5:l3">booshede</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">David en <rhyme label="c" type="m">Publicaen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Met Sacheus <rhyme label="c" type="m" corresp="#s5:l6">opstaen</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Laet ons in <rhyme label="b" type="f" corresp="#s5:l3">vrede</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="1" type="-+">O <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">Bevrijdt na ons <rhyme label="a" type="m" corresp="#s6:l1">begeer</rhyme></l>
        <l id="s6:l3" met="2" type="-+">De zee en <rhyme label="b" type="f">landen</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Van de <rhyme label="b" type="f" corresp="#s6:l3">Vyanden</rhyme>;</l>
        <l id="s6:l5" met="5" type="-+">Maeckt dat sy niet meer rooven ofte <rhyme label="b" type="f" corresp="#s6:l3">branden</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Ey, Harder trouw en <rhyme label="c" type="m">goet</rhyme>!</l>
        <l id="s6:l7" met="3" type="-+">Geeft ons weder <rhyme label="c" type="m" corresp="#s6:l6">voorspoet</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Met milde <rhyme label="b" type="f" corresp="#s6:l3">handen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="1" type="-+">O <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">Vergunt dat niet ons <rhyme label="a" type="m" corresp="#s7:l1">weer</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Van u mach <rhyme label="b" type="f">scheyde</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Ofte <rhyme label="b" type="f" corresp="#s7:l3">verleyde</rhyme></l>
        <l id="s7:l5" met="5" type="-+">Wat stricken en netten Sathan <rhyme label="b" type="f" corresp="#s7:l3">uytspreye</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Of Vleesch of Wereldt <rhyme label="c" type="m">loos</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Laet ons daer na, Lam <rhyme label="c" type="m" corresp="#s7:l6">Goods</rhyme>!</l>
        <l id="s7:l8" met="2" type="-+">In d' Hemel <rhyme label="b" type="f" corresp="#s7:l3">leye</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
