    <melody>Mijn hart dat is in lijden</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Mijn hert dat is in <rhyme label="a" type="f">liden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Alst denct op <rhyme label="b" type="m">hemmelrijc</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Daer sy hem al <rhyme label="a" type="f" corresp="#s1:l1">verbliden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Mit Jhesu <rhyme label="b" type="m" corresp="#s1:l2">ewelic</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">End syn van sorghen <rhyme label="c" type="m">vry</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Och heer hoe wee is <rhyme label="c" type="m" corresp="#s1:l5">my</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Als my coemt in den <rhyme label="d" type="m">syn</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Dat ik daer nijt en <rhyme label="d" type="m" corresp="#s1:l7">byn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Och ic byn hier <rhyme label="a" type="f">beneden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daer boven die ic <rhyme label="b" type="m">myn</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Tis langhe tijt <rhyme label="a" type="f" corresp="#s2:l1">gheleden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En hoerde nijt van <rhyme label="b" type="m" corresp="#s2:l2">hym</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hoe dattet mit hem <rhyme label="c" type="m">staet</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Nu Jhesu lief, <rhyme label="c" type="m" corresp="#s2:l5">ontfaet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Mijn ziel die aldus <rhyme label="d" type="m">zeer</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Om u quelt, lieve <rhyme label="d" type="m" corresp="#s2:l7">heer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wye sel mijn bootscap <rhyme label="a" type="f">draghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Jhesu mijn suete <rhyme label="b" type="m">lief</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Och mocht ic hem <rhyme label="a" type="f" corresp="#s3:l1">behaghen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat waer al mijn <rhyme label="b" type="m" corresp="#s3:l2">gherief</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">So woud ic vrolic <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Mijn hert lijd dicwijl <rhyme label="c" type="m" corresp="#s3:l5">pijn</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Als ic my ijt <rhyme label="d" type="m">ontga</rhyme>.</l>
        <l id="s3:l8" met="3" type="-+">Mijn lief nijt vast en <rhyme label="d" type="m" corresp="#s3:l7">sta</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En weet gheen beter <rhyme label="a" type="f">bode</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Te seynden aen mijn <rhyme label="b" type="m">lief</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dan ic my gheef tot <rhyme label="a" type="f" corresp="#s4:l1">Gode</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Mijn hert, laet sijn mijn <rhyme label="b" type="m" corresp="#s4:l2">brief</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Hi selt al wel <rhyme label="c" type="m">verstaen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Hi is diet hert siet <rhyme label="c" type="m" corresp="#s4:l5">aen</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">End daer na hi <rhyme label="d" type="m">verlient</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Sijn gracy die hem <rhyme label="d" type="m" corresp="#s4:l7">dient</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Jhesu heer der <rhyme label="a" type="f">heren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Goots uutvercoren <rhyme label="b" type="m">soen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Aensiet doch mijn <rhyme label="a" type="f" corresp="#s5:l1">begheren</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Ghelieftet u, wilt <rhyme label="b" type="m" corresp="#s5:l2">doen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Het is zeer mijn <rhyme label="c" type="m">begheert</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Te sijn <rhyme label="c" type="m" corresp="#s5:l5">ghevisiteert</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Van u, o lief, al <rhyme label="d" type="m">thant</rhyme>.</l>
        <l id="s5:l8" met="3" type="-+">Mi seer na u <rhyme label="d" type="m" corresp="#s5:l7">verlanct</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ju suete <rhyme label="a" type="f">consolacy</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">O Jhesu, lieve <rhyme label="b" type="m">heer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Is my een grote <rhyme label="a" type="f" corresp="#s6:l1">gracy</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Ic bid u daer om <rhyme label="b" type="m" corresp="#s6:l2">zeer</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Och vueld ic hem in <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Van sorghen waer ic <rhyme label="c" type="m" corresp="#s6:l5">vry</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Want hoet hert is <rhyme label="d" type="m">ghewont</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Sy maectet <rhyme label="d" type="m" corresp="#s6:l7">alghesont</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Waer blijf di, <rhyme label="a" type="f">uutvercoren</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En word ju nijt <rhyme label="b" type="m">ontwaer</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Ic bid ju, wilt doch <rhyme label="a" type="f" corresp="#s7:l1">horen</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Mijn hert, dat is my <rhyme label="b" type="m" corresp="#s7:l2">zwaer</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Te mael seer <rhyme label="c" type="m">onghestelt</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">Het is om u dat <rhyme label="c" type="m" corresp="#s7:l5">quelt</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Van rouwen selt <rhyme label="d" type="m">vergaen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Macht ju troest nijt <rhyme label="d" type="m" corresp="#s7:l7">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Och wilt my nijt <rhyme label="a" type="f">begheven</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Mijn alreliefste <rhyme label="b" type="m">heer</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Want sonder u te <rhyme label="a" type="f" corresp="#s8:l1">leven</rhyme></l>
        <l id="s8:l4" met="3" type="-+">En wynsch ic <rhyme label="b" type="m" corresp="#s8:l2">nummermeer</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Gi sijt mijn hert, mijn <rhyme label="c" type="m">syn</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ic bid ju, spreect my <rhyme label="c" type="m" corresp="#s8:l5">in</rhyme>.</l>
        <l id="s8:l7" met="3" type="-+">Laet my van u <rhyme label="d" type="m">verstaen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Hoe gi wilt sijn <rhyme label="d" type="m" corresp="#s8:l7">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ic had u also <rhyme label="a" type="f">gharen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">O Jhesu lief, in <rhyme label="b" type="m">my</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Gi sijt mijns herts <rhyme label="a" type="f" corresp="#s9:l1">verclaren</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Mit u so bin ic <rhyme label="b" type="m" corresp="#s9:l2">bly</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Tis anders groot <rhyme label="c" type="m">verdriet</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">Al dat in my <rhyme label="c" type="m" corresp="#s9:l5">ghesciet</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Hoe scoen hoe suet mach <rhyme label="d" type="m">sijn</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Tword al int laetste <rhyme label="d" type="m" corresp="#s9:l7">pijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Nu wilt mijns doch <rhyme label="a" type="f">ontfermen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Ic heb ju lang <rhyme label="b" type="m">verbeyt</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">Coemt, doet mijn hertkijn <rhyme label="a" type="f" corresp="#s10:l1">bernen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Mit u in <rhyme label="b" type="m" corresp="#s10:l2">sueticheyt</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Het is my also <rhyme label="c" type="m">bang</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Want gi toeft also <rhyme label="c" type="m" corresp="#s10:l5">lang</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Des bin ic <rhyme label="d" type="m">onghewoent</rhyme>.</l>
        <l id="s10:l8" met="3" type="-+">Och lief, ic bid u, <rhyme label="d" type="m" corresp="#s10:l7">coemt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Och heer, veel <rhyme label="a" type="f">tribulacy</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Is my aldus <rhyme label="b" type="m">bereyt</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">Heb ict verdient, och <rhyme label="a" type="f" corresp="#s11:l1">lacy</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Dat is my waerlic <rhyme label="b" type="m" corresp="#s11:l2">leyt</rhyme>.</l>
        <l id="s11:l5" met="3" type="-+">My dunct, gi staet my <rhyme label="c" type="m">leech</rhyme>.</l>
        <l id="s11:l6" met="3" type="-+">Tis ymmer nijt alst <rhyme label="c" type="m" corresp="#s11:l5">pleecht</rhyme>.</l>
        <l id="s11:l7" met="3" type="-+">Ic claech ju mijn <rhyme label="d" type="m">verdriet</rhyme></l>
        <l id="s11:l8" met="3" type="-+">End gi en troest my <rhyme label="d" type="m" corresp="#s11:l7">nyet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
