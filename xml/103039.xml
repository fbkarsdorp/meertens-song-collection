    <melody>Als Phoebus vertoog</melody>
  <author>Arnold Bon</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OCh Krelis mijn langst, ick ben soo <rhyme label="a" type="m">verbranst</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Op u Kormis aensicht <rhyme label="b" type="m">verlieft</rhyme>:</l>
        <l id="s1:l3" met="2" type="-+">Jou Kraech van dun <rhyme label="c" type="m">doock</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">en jou paersen <rhyme label="c" type="m" corresp="#s1:l3">Broock</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Die zijn oock dubbel <rhyme label="b" type="m" corresp="#s1:l2">ondiep</rhyme>:</l>
        <l id="s1:l6" met="2" type="-+">Daer in steelje mijn <rhyme label="d" type="m">zin</rhyme>:</l>
        <l id="s1:l7" met="2" type="-+">Soo dat ick iou <rhyme label="d" type="m" corresp="#s1:l6">min</rhyme></l>
        <l id="s1:l8" met="3" type="-+">En niet kan slapen <rhyme label="e" type="m">gerust</rhyme>,</l>
        <l id="s1:l9" met="6" type="-+">Com kustme, kustme, kustme en doodme alstje <rhyme label="e" type="m" corresp="#s1:l8">lust</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer heuchjet iou wel, secht fraeie <rhyme label="a" type="m">Gesel</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Doen ick int selschap lest <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Hoe dat ic daer <rhyme label="c" type="m">sprongh</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">en lijties <rhyme label="c" type="m" corresp="#s2:l3">voorsongh</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Dat niemant van al een <rhyme label="b" type="m" corresp="#s2:l2">bras</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Soo vroolyck als <rhyme label="d" type="m">ick</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">niet was, en hoe <rhyme label="d" type="m" corresp="#s2:l6">dick</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Heb ic iou feyle <rhyme label="e" type="m">verlust</rhyme>,</l>
        <l id="s2:l9" met="6" type="-+">Kom kustme, kustme, kustme lief en doodme alstie <rhyme label="e" type="m" corresp="#s2:l8">lust</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer is ooc geen meyt, als Ick, die soo <rhyme label="a" type="m">breyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ooc naeie en stijven <rhyme label="b" type="m">kan</rhyme>:</l>
        <l id="s3:l3" met="2" type="-+">Noch die beeter <rhyme label="c" type="m">wast</rhyme></l>
        <l id="s3:l4" met="2" type="-+">en als wy <rhyme label="c" type="m" corresp="#s3:l3">vergast</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Worden Van Vrouwen of <rhyme label="b" type="m" corresp="#s3:l2">man</rhyme>.</l>
        <l id="s3:l6" met="2" type="-+">Ic kooc en ic <rhyme label="d" type="m">brae</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">isset vrooch of <rhyme label="d" type="m" corresp="#s3:l6">spae</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Dit is u al wel <rhyme label="e" type="m">bewust</rhyme>,</l>
        <l id="s3:l9" met="6" type="-+">Kom kustme, kustme, kuste lief en doodme alstie <rhyme label="e" type="m" corresp="#s3:l8">lust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ey soete kaertie bid zit wat naer <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">By mee je maectme schier <rhyme label="b" type="m">wilt</rhyme>:</l>
        <l id="s4:l3" met="2" type="-+">Kom geeftme een <rhyme label="c" type="m">soen</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">ic ben tansjes <rhyme label="c" type="m" corresp="#s4:l3">groen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Mijn hart en mijn lijf dat <rhyme label="b" type="m" corresp="#s4:l2">trilt</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Hoe benje soo <rhyme label="d" type="m">blo</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">och soo lief och <rhyme label="d" type="m" corresp="#s4:l6">soo</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Sal ic wat warden <rhyme label="e" type="m">geblust</rhyme>,</l>
        <l id="s4:l9" met="6" type="-+">Nu kustme, kustme, kustme, lief en doodme alstje <rhyme label="e" type="m" corresp="#s4:l8">lust</rhyme>!</l>
      </lg>
    </lg>
  </text>
