  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Colyn vroeg aan zyn <rhyme label="a" type="m">Ziels-Vriendin</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Als zy in 't Veld zig eenzaam <rhyme label="b" type="f">zagen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ben ik 't voorwerp van u <rhyme label="a" type="m" corresp="#s1:l1">min</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Zal ik altoos aan u <rhyme label="b" type="f" corresp="#s1:l2">behaagen</rhyme>?</l>
        <l id="s1:l5" met="3" type="+-">Ja gewis <rhyme label="c" type="m">Colyn</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Ik zweer u trouw te <rhyme label="c" type="m" corresp="#s1:l5">zyn</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Maar gy moet my niet verder <rhyme label="b" type="f" corresp="#s1:l2">vragen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ach! zo gy my geen strikken <rhyme label="a" type="m">spand</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Om dus myn kommer te <rhyme label="b" type="f">verjaagen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Laat dan een drukking van u <rhyme label="a" type="m" corresp="#s2:l1">hand</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Van uwe min getuigenis <rhyme label="b" type="f" corresp="#s2:l2">dragen</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Neem dan eene <rhyme label="c" type="m">zoen</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Sonder meer te <rhyme label="c" type="m" corresp="#s2:l5">doen</rhyme>;</l>
        <l id="s2:l7" met="4" type="-+">want gy moet my niet verder <rhyme label="b" type="f" corresp="#s2:l2">vragen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gy hebt my een ruyker <rhyme label="a" type="m">toegezeit</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dit is een trouwgift in dees <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Geef dat ze 't heil voor my <rhyme label="a" type="m" corresp="#s3:l1">bereyd</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">waarom de minnaars alles <rhyme label="b" type="f" corresp="#s3:l2">waâgen</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Ontfangt deze <rhyme label="c" type="m">gift</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Dit bedwingt u <rhyme label="c" type="m" corresp="#s3:l5">drift</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Dog dan moet gy my niet verder <rhyme label="b" type="f" corresp="#s3:l2">vragen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nog een bewys Liezette, <rhyme label="a" type="m">toon</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Nu gy myn liefdens hoop wilt <rhyme label="b" type="f">schrage</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En teeder kusje zy myn <rhyme label="a" type="m" corresp="#s4:l1">loon</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Voor u getrouw myn min te <rhyme label="b" type="f" corresp="#s4:l2">klaage</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Neemt dan eene <rhyme label="c" type="m">zoen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Sonder meer te <rhyme label="c" type="m" corresp="#s4:l5">doen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Maar gy moet my niet verder <rhyme label="b" type="f" corresp="#s4:l2">vragen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Colyn, wiens drift nu meer <rhyme label="a" type="m">ontbrant</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Hadt zeker verder voor <rhyme label="b" type="f">geslaagen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maar 't Meisje toonde haar <rhyme label="a" type="m" corresp="#s5:l1">verstand</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En sprak, schouw my met meer te <rhyme label="b" type="f" corresp="#s5:l2">plaagen</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Gy mogt verder <rhyme label="c" type="m">gaan</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Ik u niet <rhyme label="c" type="m" corresp="#s5:l5">weerstaan</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">En wat zou gy dan niet wel <rhyme label="b" type="f" corresp="#s5:l2">vragen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Onder het vlugte zy neder <rhyme label="a" type="m">viel</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Om van haar minnaar te <rhyme label="b" type="f">geraaken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Denkt hoe dat Colyn hem <rhyme label="a" type="m" corresp="#s6:l1">hiel</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Om Liezette te <rhyme label="b" type="f" corresp="#s6:l2">vermake</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">Toe sprak zy <rhyme label="c" type="m">minnaar</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Gy brengt my in <rhyme label="c" type="m" corresp="#s6:l5">gevaar</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">wilt u driften staaken, my niet verder <rhyme label="b" type="f" corresp="#s6:l2">vragen</rhyme>.</l>
      </lg>
    </lg>
