    <melody>Roosjes in de mei</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIe dat een vreedsaem huys wil <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">En vrolijck <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Die moet de dertle Overdaed <rhyme label="a" type="m" corresp="#s1:l1">vlien</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Want haer treken, die breken, en <rhyme label="c" type="f">steken</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Met smert en <rhyme label="b" type="m" corresp="#s1:l2">pijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'t Genoegen is soo groote <rhyme label="a" type="m">schat</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Soo groote <rhyme label="b" type="m">deughd</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat alles met genoegen <rhyme label="a" type="m" corresp="#s2:l1">aenvat</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Want Gods gaven, en haven, die <rhyme label="c" type="f">laven</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Den mensch met <rhyme label="b" type="m" corresp="#s2:l2">vreughd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het matigh kosjen smaeckt heel <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Hoe slecht hy 't <rhyme label="b" type="m">heeft</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Want hy genoeght in 't danckbaer <rhyme label="a" type="m" corresp="#s3:l1">gemoed</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Van Godts zegen, verkregen, ter <rhyme label="c" type="f">degen</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Hy rijcklijck <rhyme label="b" type="m" corresp="#s3:l2">leeft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Der Grooten weeldrigh <rhyme label="a" type="m">overschot</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Baert hem geen <rhyme label="b" type="m">smert</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Hy siet het aen maer acht het <rhyme label="a" type="m" corresp="#s4:l1">spot</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Want haer weelde, vereelde, noch <rhyme label="c" type="f">deelde</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Gyt droevigh <rhyme label="b" type="m" corresp="#s4:l2">hert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'t Vernoegend hert past hier niet <rhyme label="a" type="m">op</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Wech <rhyme label="b" type="m">overdaed</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Al hijstmen 't zeyltjen in den <rhyme label="a" type="m" corresp="#s5:l1">top</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat brallen, dat prallen, sal <rhyme label="c" type="f">vallen</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Met schand en <rhyme label="b" type="m" corresp="#s5:l2">schaed</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ey nuttight dese leckre <rhyme label="a" type="m">kost</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">En frissche <rhyme label="b" type="m">dranck</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">En singt den Schepper, die dees <rhyme label="a" type="m" corresp="#s6:l1">most</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die 't leven, het sweven, <rhyme label="c" type="f">gegeven</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Heeft, lof en <rhyme label="b" type="m" corresp="#s6:l2">danck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wel, veylge staet, en vrolijc by <rhyme label="a" type="m">een</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Vol soete <rhyme label="b" type="m">rust</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Ey weest met 's Heeren segen te <rhyme label="a" type="m" corresp="#s7:l1">vreen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Want de quaden, die schaden, en <rhyme label="c" type="f">smaden</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Op onse <rhyme label="b" type="m" corresp="#s7:l2">lust</rhyme>.</l>
      </lg>
    </lg>
  </text>
