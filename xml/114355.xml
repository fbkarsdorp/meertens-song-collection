  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIlt my, Thoma, oorlof <rhyme label="a" type="f">gheven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die maer aerde ben en <rhyme label="b" type="m">stof</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat ick singh met vreucht u <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die nu blinckt in 's hemels <rhyme label="b" type="m" corresp="#s1:l2">hof</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dat, verblijt in Godt den <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Loft en danckt in u hem <rhyme label="c" type="m" corresp="#s1:l5">seer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Christus uyt 't ghesicht <rhyme label="a" type="f">verdwenen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Van d' Apostels claer <rhyme label="b" type="m">aenschout</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Is om u werom <rhyme label="a" type="f" corresp="#s2:l1">verschenen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Doen ghy niet ghelooven <rhyme label="b" type="m" corresp="#s2:l2">wout</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Dat hy nu was <rhyme label="c" type="m">opghestaen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Self heeft u ghesproken <rhyme label="c" type="m" corresp="#s2:l5">aen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">U heeft hy ghethoont sijn <rhyme label="a" type="f">wonden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In sijn zy, in hand' en <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Daer hy wegh me nemt de <rhyme label="a" type="f" corresp="#s3:l1">sonden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En ons brenght tot 't eewich <rhyme label="b" type="m" corresp="#s3:l2">goet</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En heeft u aldus <rhyme label="c" type="m">gheleyt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Uyt u <rhyme label="c" type="m" corresp="#s3:l5">ongheloovicheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Doen hebdy oock boven <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Hem als uwen Godt <rhyme label="b" type="m">gheeert</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Soo verlicht van hem van <rhyme label="a" type="f" corresp="#s4:l1">binnen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Soo tot hem gheheel <rhyme label="b" type="m" corresp="#s4:l2">bekeert</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Die uyt liefd' u heeft <rhyme label="c" type="m">ghesocht</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En weer tot sijn kud <rhyme label="c" type="m" corresp="#s4:l5">ghebrocht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Naerderhant in verre <rhyme label="a" type="f">landen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Hebdy het gheloof <rhyme label="b" type="m">verbreyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Daer de liefde Godts doen <rhyme label="a" type="f" corresp="#s5:l1">branden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Door u groote <rhyme label="b" type="m" corresp="#s5:l2">viericheyt</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Door u heeft den <rhyme label="c" type="m">Indiaen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Eerst het recht gheloof <rhyme label="c" type="m" corresp="#s5:l5">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Waerom u oock doen <rhyme label="a" type="f">doorschieten</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Heeft den Coninck seer <rhyme label="b" type="m">ghestoort</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En de croon nu doen <rhyme label="a" type="f" corresp="#s6:l1">ghenieten</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Die de strijders <rhyme label="b" type="m" corresp="#s6:l2">toebehoort</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Die ghy nu oock voor den <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Eewich draeght met alle <rhyme label="c" type="m" corresp="#s6:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maer siet eens op ons van <rhyme label="a" type="f">boven</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Zijt ons jonstich by den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Die w' in u victorie <rhyme label="a" type="f" corresp="#s7:l1">loven</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Die ghy hebt behaeght soo <rhyme label="b" type="m" corresp="#s7:l2">seer</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Maeckt dat hy door 't hemelsch <rhyme label="c" type="m">licht</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Com' ons eeuwich in't <rhyme label="c" type="m" corresp="#s7:l5">gesicht</rhyme>.</l>
      </lg>
    </lg>
  </text>
