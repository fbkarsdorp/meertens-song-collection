  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DOminicus <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Staet ons ten <rhyme label="b" type="m">toon</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die deur sijn heyligh <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">En deughden <rhyme label="b" type="m" corresp="#s1:l2">schoon</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ons dient tot een <rhyme label="b" type="m" corresp="#s1:l2">patroon</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En een exempel <rhyme label="c" type="m">claer</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Die-men behoort te volghen <rhyme label="c" type="m" corresp="#s1:l6">naer</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als sijn deught-same <rhyme label="a" type="f">Moeder</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Van hem gingh <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Den Heer was haeren <rhyme label="a" type="f" corresp="#s2:l1">behoeder</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">In alle <rhyme label="b" type="m" corresp="#s2:l2">noot</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Sy versagh wonder <rhyme label="b" type="m" corresp="#s2:l2">bloot</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Van haer heylighe <rhyme label="c" type="m">vreught</rhyme></l>
        <l id="s2:l7" met="4" type="-+">In haeren slaep deur 's gheest <rhyme label="c" type="m" corresp="#s2:l6">ghenucht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Eenen hont sach hy <rhyme label="a" type="f">waken</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Veur haer <rhyme label="b" type="m">ghesicht</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Met een torse in <rhyme label="a" type="f" corresp="#s3:l1">kaken</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Brande <rhyme label="b" type="m" corresp="#s3:l2">licht</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Hier deur wertsy <rhyme label="b" type="m" corresp="#s3:l2">ghesticht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat haer vreught <rhyme label="c" type="m">over-al</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Sonde verlichten d'aertsche <rhyme label="c" type="m" corresp="#s3:l6">dal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als dit kint met <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Gheboren <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">T'heeft sijn doopsel <rhyme label="a" type="f" corresp="#s4:l1">ontfanghen</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Neerstich en <rhyme label="b" type="m" corresp="#s4:l2">ras</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Men sach op t'selfe <rhyme label="b" type="m" corresp="#s4:l2">pas</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Een ster dit vast <rhyme label="c" type="m">ghelooft</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Blinckende klaer boven sijn <rhyme label="c" type="m" corresp="#s4:l6">hooft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als hy nu was <rhyme label="a" type="f">ghecomen</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Tot sijn <rhyme label="b" type="m">verstandt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En in sijn cracht ginck <rhyme label="a" type="f" corresp="#s5:l1">vromen</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Seer goeder <rhyme label="b" type="m" corresp="#s5:l2">hant</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Godts liefde bleef <rhyme label="b" type="m" corresp="#s5:l2">gheplant</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">In sijn herte <rhyme label="c" type="m">bequaem</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Waer deur hy Godt was <rhyme label="c" type="m" corresp="#s5:l6">aen-ghenaem</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wie soud' den loff <rhyme label="a" type="f">verklaren</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Van desen <rhyme label="b" type="m">man</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Die van sijn jonghe <rhyme label="a" type="f" corresp="#s6:l1">jaeren</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Sijn vleesch <rhyme label="b" type="m" corresp="#s6:l2">verwan</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">De werelt ons <rhyme label="b" type="m" corresp="#s6:l2">tyran</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Met den duyvel vol <rhyme label="c" type="m">nijdt</rhyme>:</l>
        <l id="s6:l7" met="4" type="-+">Saligh is hy die wettich <rhyme label="c" type="m" corresp="#s6:l6">strijdt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy was seer goet van <rhyme label="a" type="f">gronde</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Sijn leven <rhyme label="b" type="m">lanck</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Wachtende hem van <rhyme label="a" type="f" corresp="#s7:l1">sonden</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Door s' vleesch <rhyme label="b" type="m" corresp="#s7:l2">bedwanck</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Godt gaf hy loff en <rhyme label="b" type="m" corresp="#s7:l2">danck</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">In alle <rhyme label="c" type="m">teghenspoedt</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">Wel moet hy vaeren die wel <rhyme label="c" type="m" corresp="#s7:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Den armen met <rhyme label="a" type="f">verkloecken</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Heeft hy <rhyme label="b" type="m">besocht</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Sijn kleeren en sijn <rhyme label="a" type="f" corresp="#s8:l1">boecken</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Daerom <rhyme label="b" type="m" corresp="#s8:l2">verkocht</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Hier me soo hy best <rhyme label="b" type="m" corresp="#s8:l2">mocht</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Heeft hem in noot <rhyme label="c" type="m">versien</rhyme>;</l>
        <l id="s8:l7" met="4" type="-+">Liefde doet veel deughden <rhyme label="c" type="m" corresp="#s8:l6">gheschien</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hy gonck stichten en <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">De ketters <rhyme label="b" type="m">quaedt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">En tot t'gheloof <rhyme label="a" type="f" corresp="#s9:l1">bekeeren</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Deur wijsen <rhyme label="b" type="m" corresp="#s9:l2">raedt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Hy badt oock metter <rhyme label="b" type="m" corresp="#s9:l2">daet</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Veur de verdolde <rhyme label="c" type="m">meest</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Al deur de kracht des heylighen <rhyme label="c" type="m" corresp="#s9:l6">Gheest</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Desen heylighen <rhyme label="a" type="f">stichter</rhyme></l>
        <l id="s10:l2" met="2" type="-+">Deur sijn <rhyme label="b" type="m">vermaan</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Was der sielen <rhyme label="a" type="f" corresp="#s10:l1">verlichter</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Sonder <rhyme label="b" type="m" corresp="#s10:l2">belaen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Daer by heeft hy <rhyme label="b" type="m" corresp="#s10:l2">ghedaen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Waer dat hy heeft <rhyme label="c" type="m">gheweest</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Veel miraculen soo men <rhyme label="c" type="m" corresp="#s10:l6">leest</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Het Roosen-krans-ken <rhyme label="a" type="f">weerdich</rhyme></l>
        <l id="s11:l2" met="2" type="-+">Om t' bedden <rhyme label="b" type="m">net</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Heeft desen man <rhyme label="a" type="f" corresp="#s11:l1">rechtveerdich</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+">Eerst in <rhyme label="b" type="m" corresp="#s11:l2">gheset</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Daer men de Heer <rhyme label="b" type="m" corresp="#s11:l2">met</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Sijn Moeder me <rhyme label="c" type="m">vereert</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Liefde tot Godt hier deur <rhyme label="c" type="m" corresp="#s11:l6">vemeert</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Als hy veel goede <rhyme label="a" type="f">daden</rhyme>,</l>
        <l id="s12:l2" met="2" type="-+">Hadde <rhyme label="b" type="m">volbracht</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Deur-gaende 's werelts <rhyme label="a" type="f" corresp="#s12:l1">paden</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">Wijs en <rhyme label="b" type="m" corresp="#s12:l2">bedacht</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Hy heeft in't lest <rhyme label="b" type="m" corresp="#s12:l2">betracht</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Met sijn lampen <rhyme label="c" type="m">bereyt</rhyme></l>
        <l id="s12:l7" met="4" type="-+">D' eeuwighe vreught der <rhyme label="c" type="m" corresp="#s12:l6">salicheydt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">O glorieuse <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s13:l2" met="2" type="-+"><rhyme label="b" type="m">Dominice</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Bidt veur ons <rhyme label="a" type="f" corresp="#s13:l1">alle-gader</rhyme>,</l>
        <l id="s13:l4" met="2" type="-+">Om rust en <rhyme label="b" type="m" corresp="#s13:l2">vre</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">En dat wy sondaers <rhyme label="b" type="m" corresp="#s13:l2">me</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Van Godt ghenade <rhyme label="c" type="m">ontfaen</rhyme>,</l>
        <l id="s13:l7" met="4" type="-+">Heylighen vrient wilt ons <rhyme label="c" type="m" corresp="#s13:l6">by-staen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
