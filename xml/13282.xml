  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">OLam <rhyme label="a" type="f">geladen</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Met ons <rhyme label="a" type="f" corresp="#s1:l1">misdaden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">O Jesu soet, O Jesu <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s1:l4" met="6" type="-+">Hoe pijnelijcke paden, Hoe pijnelijcke <rhyme label="a" type="f" corresp="#s1:l1">paden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">U liefde voor my <rhyme label="b" type="m" corresp="#s1:l3">doet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Gepurpert met u <rhyme label="b" type="m" corresp="#s1:l3">bloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">De sware <rhyme label="a" type="f">ponden</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Van al mijn <rhyme label="a" type="f" corresp="#s2:l1">sonden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">U schouders teer, U schouders <rhyme label="b" type="m">teer</rhyme>,</l>
        <l id="s2:l4" met="6" type="-+">O goeden Jesu wonden, O goeden Jesu <rhyme label="a" type="f" corresp="#s2:l1">wonden</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Voortaen ick u niet <rhyme label="b" type="m" corresp="#s2:l3">meer</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Vergrammen wil, Ã´ <rhyme label="b" type="m" corresp="#s2:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Laet fonder <rhyme label="a" type="f">klagen</rhyme></l>
        <l id="s3:l2" met="2" type="-+">My voor u <rhyme label="a" type="f" corresp="#s3:l1">dragen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Onnoosel Lam, Onnoosel <rhyme label="b" type="m">Lam</rhyme>,</l>
        <l id="s3:l4" met="6" type="-+">U Cruys oock al mijn dagen, U Cruys oock al mijn <rhyme label="a" type="f" corresp="#s3:l1">dagen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat my mijn straf <rhyme label="b" type="m" corresp="#s3:l3">ontnam</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">De wel verdiende <rhyme label="b" type="m" corresp="#s3:l3">vlam</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">My laet <rhyme label="a" type="f">afdroogen</rhyme></l>
        <l id="s4:l2" met="2" type="-+">U droevig' <rhyme label="a" type="f" corresp="#s4:l1">oogen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Vol bloet, en sweet, Vol bloet, en <rhyme label="b" type="m">sweet</rhyme>,</l>
        <l id="s4:l4" met="6" type="-+">Druckt soo naer u vermogen, Druckt soo naer u <rhyme label="a" type="f" corresp="#s4:l1">vermogen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">O Heer, in my u <rhyme label="b" type="m" corresp="#s4:l3">leet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat ick u noyt <rhyme label="b" type="m" corresp="#s4:l3">vergeet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">U droeve <rhyme label="a" type="f">wegen</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Mijn hert <rhyme label="a" type="f" corresp="#s5:l1">bewegen</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">U sware Cruys, U sware <rhyme label="b" type="m">Cruys</rhyme>,</l>
        <l id="s5:l4" met="6" type="-+">My geeft den blijden zegen, My geeft den blijden <rhyme label="a" type="f" corresp="#s5:l1">zegen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En my van sonden <rhyme label="b" type="m" corresp="#s5:l3">kuys</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Leydt in uws Vaders <rhyme label="b" type="m" corresp="#s5:l3">Huys</rhyme>.</l>
      </lg>
    </lg>
  </text>
