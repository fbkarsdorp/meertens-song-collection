    <tags/>
    <melody>Het contract met de dood</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Gistren, vrienden, kunt gij 't <rhyme label="a" type="f">denken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Gistren wild' ik wijn in <rhyme label="a" type="f" corresp="#s1:l1">schenken</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Toen op eens zeer <rhyme label="b" type="m">onverwacht</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Vriend Hein een bezoek mij <rhyme label="b" type="m" corresp="#s1:l3">bracht</rhyme>!</l>
        <l id="s1:l5" met="4" type="+-">Hop, hop, hop! <rhyme label="c" type="m">Vi-val-le-ral-le-ra</rhyme>!</l>
        <l id="s1:l6" met="5" type="-+">Vi-val-le-ral-le-ra! <rhyme label="c" type="m" corresp="#s1:l5">Vi-val-le-ral-le-ral-le-ra</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dreigend zwaaide hij zijn <rhyme label="a" type="f">zeisen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Dreigend sprak hij, 't leek wel <rhyme label="a" type="f" corresp="#s2:l1">krijschen</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Weg van hier! gij Bachus <rhyme label="b" type="m">vriend</rhyme>!</l>
        <l id="s2:l4" met="4" type="+-">Weg! uw rijk heeft <rhyme label="b" type="m" corresp="#s2:l3">uitgediend</rhyme>!</l>
        <l id="s2:l5" met="4" type="+-">Hop, hop, hop! <rhyme label="c" type="m">Vi-val-le-ral-le-ra</rhyme>!</l>
        <l id="s2:l6" met="5" type="-+">Vi-val-le-ral-le-ra! <rhyme label="c" type="m" corresp="#s2:l5">Vi-val-le-ral-le-ral-le-ra</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Lieve dood, zei ik vol <rhyme label="a" type="f">tranen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Komt gij mij zoo vroeg <rhyme label="a" type="f" corresp="#s3:l1">aanmanen</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Zie? hier heb ik wijn voor <rhyme label="b" type="m">u</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Lieve dood, verschoon mij <rhyme label="b" type="m" corresp="#s3:l3">nu</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Hop, hop, hop! <rhyme label="c" type="m">Vi-val-le-ral-le-ra</rhyme>!</l>
        <l id="s3:l6" met="5" type="-+">Vi-val-le-ral-le-ra! <rhyme label="c" type="m" corresp="#s3:l5">Vi-val-le-ral-le-ral-le-ra</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Lachend greep hij naar het <rhyme label="a" type="f">wijnglas</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En het scheen of 't naar zijn smaak <rhyme label="a" type="f" corresp="#s4:l1">was</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Want hij dronk het glaasje <rhyme label="b" type="m">leeg</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dus het smaakte hem ter <rhyme label="b" type="m" corresp="#s4:l3">deeg</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Hop, hop, hop! <rhyme label="c" type="m">Vi-val-le-ral-le-ra</rhyme>!</l>
        <l id="s4:l6" met="5" type="-+">Vi-val-le-ral-le-ra! <rhyme label="c" type="m" corresp="#s4:l5">Vi-val-le-ral-le-ral-le-ra</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">'k Ben gered, zoo dacht ik <rhyme label="a" type="f">vroolijk</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Maar de dood, die sprak zeer <rhyme label="a" type="f" corresp="#s5:l1">oolijk</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Dwaas, voor éénen druppel <rhyme label="b" type="m">wijn</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Denkt gij van mij af te <rhyme label="b" type="m" corresp="#s5:l3">zijn</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Hop, hop, hop! <rhyme label="c" type="m">Vi-val-le-ral-le-ra</rhyme>!</l>
        <l id="s5:l6" met="5" type="-+">Vi-val-le-ral-le-ra! <rhyme label="c" type="m" corresp="#s5:l5">Vi-val-le-ral-le-ral-le-ra</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dood, sprak ik, ik had <rhyme label="a" type="f">gewild</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Treden in het <rhyme label="a" type="f" corresp="#s6:l1">doktersgild</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Laat mij, dan beloof ik <rhyme label="b" type="m">nu</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Half mijn kranken zijn voor <rhyme label="b" type="m" corresp="#s6:l3">u</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Hop, hop, hop! <rhyme label="c" type="m">Vi-val-le-ral-le-ra</rhyme>!</l>
        <l id="s6:l6" met="5" type="-+">Vi-val-le-ral-le-ra! <rhyme label="c" type="m" corresp="#s6:l5">Vi-val-le-ral-le-ral-le-ra</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Goed, als 't zoo is moogt gij <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Wil mij spoedig offers <rhyme label="a" type="f" corresp="#s7:l1">geven</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Leef tot gij genoeg <rhyme label="b" type="m">gekust</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En na 't drinken haakt naar <rhyme label="b" type="m" corresp="#s7:l3">rust</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Hop, hop, hop! <rhyme label="c" type="m">Vi-val-le-ral-le-ra</rhyme>!</l>
        <l id="s7:l6" met="5" type="-+">Vi-val-le-ral-le-ra! <rhyme label="c" type="m" corresp="#s7:l5">Vi-val-le-ral-le-ral-le-ra</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">O, hoe zoet klinkt dat in <rhyme label="a" type="f">d'ooren</rhyme>!</l>
        <l id="s8:l2" met="4" type="+-">Dood, ik ben op nieuw <rhyme label="a" type="f" corresp="#s8:l1">geboren</rhyme>;</l>
        <l id="s8:l3" met="4" type="+-">U wijd ik dit <rhyme label="b" type="m">druivennat</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Blijf mij van mijn <rhyme label="b" type="m" corresp="#s8:l3">levenspad</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Hop, hop, hop! <rhyme label="c" type="m">Vi-val-le-ral-le-ra</rhyme>!</l>
        <l id="s8:l6" met="5" type="-+">Vi-val-le-ral-le-ra! <rhyme label="c" type="m" corresp="#s8:l5">Vi-val-le-ral-le-ral-le-ra</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Eeuwigheid is mij <rhyme label="a" type="f">gegeven</rhyme>;</l>
        <l id="s9:l2" met="4" type="+-">Want zoo lang ik hoop te <rhyme label="a" type="f" corresp="#s9:l1">leven</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Zullen altijd liefd' en <rhyme label="b" type="m">wijn</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Immer mijn gezellen <rhyme label="b" type="m" corresp="#s9:l3">zijn</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Hop, hop, hop! <rhyme label="c" type="m">Vi-val-le-ral-le-ra</rhyme>!</l>
        <l id="s9:l6" met="5" type="-+">Vi-val-le-ral-le-ra! <rhyme label="c" type="m" corresp="#s9:l5">Vi-val-le-ral-le-ral-le-ra</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
