  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IK stelle op u, Heer, myn <rhyme label="a" type="f">betrouwen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat my nooit schande of <rhyme label="b" type="m">smaat</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Treffe of benaauw'; maar <rhyme label="b" type="m" corresp="#s1:l2">laat</rhyme></l>
        <l id="s1:l4" met="4" type="-+">My eeuwiglyk uw heil <rhyme label="a" type="f" corresp="#s1:l1">beschouwen</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Help my uit, naar myn <rhyme label="c" type="m">beden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Door uw <rhyme label="c" type="m" corresp="#s1:l5">gerechtigheden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Neig, Heer, uw ooren tot myn <rhyme label="a" type="f">klaagen</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Redt my van 's vyands <rhyme label="b" type="m">trots</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Wees my een sterke <rhyme label="b" type="m" corresp="#s2:l2">rots</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Een vesting, vast door haters <rhyme label="a" type="f" corresp="#s2:l1">laagen</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Een huis, om my te <rhyme label="c" type="m">hoeden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Voor hun gewelt en <rhyme label="c" type="m" corresp="#s2:l5">woeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want gy zyt myne steenrotz, 't <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van myne ziel, myn <rhyme label="b" type="m">borg</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Gelei my door uw <rhyme label="b" type="m" corresp="#s3:l2">zorg</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Om uwen naam, in top <rhyme label="a" type="f" corresp="#s3:l1">verheven</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Redt my uit alle <rhyme label="c" type="m">netten</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die zy my heimlyk <rhyme label="c" type="m" corresp="#s3:l5">zetten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'k Beveel myn' geest in uwe <rhyme label="a" type="f">handen</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Want gy hebt my <rhyme label="b" type="m">bevrydt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Godt, die waarachtig <rhyme label="b" type="m" corresp="#s4:l2">zyt</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Ik haate hen, die, tot hun <rhyme label="a" type="f" corresp="#s4:l1">schanden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Op nietige <rhyme label="c" type="m">ydelheden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Acht neemen, en hun <rhyme label="c" type="m" corresp="#s4:l5">zeden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'k Betrouwe op Godt, verheugt van <rhyme label="a" type="f">harte</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wiens <rhyme label="b" type="m">goedertierenheit</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Geroemt wordt en <rhyme label="b" type="m" corresp="#s5:l2">verbreidt</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Want gy zaagt myne elende en <rhyme label="a" type="f" corresp="#s5:l1">smarte</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En kende in gunst myn <rhyme label="c" type="m">ziele</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Datze in geen wanhoop <rhyme label="c" type="m" corresp="#s5:l5">viele</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gy, Heer, hebt my ook niet <rhyme label="a" type="f">beslooten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">In 's vyands magt en <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Stout tegen my <rhyme label="b" type="m" corresp="#s6:l2">gekant</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Maar my uit zyne sterke <rhyme label="a" type="f" corresp="#s6:l1">pooten</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Geredt; en myne <rhyme label="c" type="m">voeten</rhyme></l>
        <l id="s6:l6" met="3" type="-+">De ruimte doen <rhyme label="c" type="m" corresp="#s6:l5">ontmoeten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wees dan, ô Heer, myn ziel <rhyme label="a" type="f">genadig</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Beangst en zwaar <rhyme label="b" type="m">geplaagt</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Myn oog is <rhyme label="b" type="m" corresp="#s7:l2">doorgeknaagt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Van smart. myn lyden ryst <rhyme label="a" type="f" corresp="#s7:l1">gestadig</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En prangt myn buik en <rhyme label="c" type="m">leden</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">Myn geest wordt fel <rhyme label="c" type="m" corresp="#s7:l5">bestreden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Want door de droefheit is myn <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Verteert; myn jaaren <rhyme label="b" type="m">zyn</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Verzucht in rou en <rhyme label="b" type="m" corresp="#s8:l2">pyn</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Myn kracht heeft my ook gansch <rhyme label="a" type="f" corresp="#s8:l1">begeeven</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Door misbedryf: myn <rhyme label="c" type="m">weenen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Doorknaagt myn vleesch en <rhyme label="c" type="m" corresp="#s8:l5">beenen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Van wegen alle myn <rhyme label="a" type="f">bestryders</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ben ik myn nabuurs <rhyme label="b" type="m">smaat</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Bekenden, in dees' <rhyme label="b" type="m" corresp="#s9:l2">staat</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Tot schrik; gehoont van myn <rhyme label="a" type="f" corresp="#s9:l1">benyders</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">'k Zie my ook op de <rhyme label="c" type="m">straaten</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Van ydereen <rhyme label="c" type="m" corresp="#s9:l5">verlaaten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ik ben als uit het hart <rhyme label="a" type="f">vergeeten</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Gelyk een doode in 't <rhyme label="b" type="m">graf</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">Elk wendt zich van my <rhyme label="b" type="m" corresp="#s10:l2">af</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">'k Ben als een vat rontom <rhyme label="a" type="f" corresp="#s10:l1">gereeten</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Bedorven en <rhyme label="c" type="m">onwaardig</rhyme>.</l>
        <l id="s10:l6" met="3" type="-+">Elk smaat my heel <rhyme label="c" type="m" corresp="#s10:l5">boosaardig</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Want ik, rontom bezet met <rhyme label="a" type="f">vreezen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Vernam aan alle <rhyme label="b" type="m">zy</rhyme></l>
        <l id="s11:l3" met="3" type="-+">De naspraak tegen <rhyme label="b" type="m" corresp="#s11:l2">my</rhyme>;</l>
        <l id="s11:l4" met="4" type="-+">Hun raadslag heeft myn ziel <rhyme label="a" type="f" corresp="#s11:l1">verweezen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Om haar met kracht te <rhyme label="c" type="m">rooven</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">En 't levens licht te <rhyme label="c" type="m" corresp="#s11:l5">dooven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maar ik betrouwe op u, ô <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Ik zeg: gy zyt myn <rhyme label="b" type="m">Godt</rhyme>.</l>
        <l id="s12:l3" met="3" type="-+">Myn levenstyd en <rhyme label="b" type="m" corresp="#s12:l2">lot</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Zyn in uw hand, verhoogt in <rhyme label="a" type="f" corresp="#s12:l1">eere</rhyme>;</l>
        <l id="s12:l5" met="3" type="-+">Redt my uit 's vyands <rhyme label="c" type="m">handen</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">En myn vervolgers <rhyme label="c" type="m" corresp="#s12:l5">tanden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Laat over my uw aanschyn <rhyme label="a" type="f">lichten</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Verlos in gunste uw' <rhyme label="b" type="m">knecht</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Naar 't woord hem <rhyme label="b" type="m" corresp="#s13:l2">toegezegt</rhyme>:</l>
        <l id="s13:l4" met="4" type="-+">En laat my nooit door schaamte <rhyme label="a" type="f" corresp="#s13:l1">zwigten</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Want ik roepe u aan, <rhyme label="c" type="m">Heere</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Opdat geen quaat my <rhyme label="c" type="m" corresp="#s13:l5">deere</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Maar schaamte treff' de <rhyme label="a" type="f">goddeloozen</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Verdelg hen tot in 't <rhyme label="b" type="m">graf</rhyme>.</l>
        <l id="s14:l3" met="3" type="-+">Verstom, tot smaat en <rhyme label="b" type="m" corresp="#s14:l2">straf</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">De valsche lippen van de <rhyme label="a" type="f" corresp="#s14:l1">boozen</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Die trots bestaan de <rhyme label="c" type="m">vroomen</rhyme></l>
        <l id="s14:l6" met="3" type="-+">Te lastren, zonder <rhyme label="c" type="m" corresp="#s14:l5">schroomen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Hoe groot zal 't goedt ook voor hen <rhyme label="a" type="f">weezen</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Dat gy hebt <rhyme label="b" type="m">wechgelegt</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Gewrocht en <rhyme label="b" type="m" corresp="#s15:l2">toegezegt</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Voor hun die uwen naame <rhyme label="a" type="f" corresp="#s15:l1">vreezen</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Hier by der menschen <rhyme label="c" type="m">kindren</rhyme>:</l>
        <l id="s15:l6" met="3" type="-+">'t Goedt dat nooit zal <rhyme label="c" type="m" corresp="#s15:l5">vermindren</rhyme> !</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Gy zult hen in 't geheim <rhyme label="a" type="f">versteeken</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Van 't Goddlyk <rhyme label="b" type="m">aangezicht</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">In 't ongenaakbaar <rhyme label="b" type="m" corresp="#s16:l2">licht</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Om 's mans hoogmoedigheên te <rhyme label="a" type="f" corresp="#s16:l1">breeken</rhyme>;</l>
        <l id="s16:l5" met="3" type="-+">En in een hut <rhyme label="c" type="m">besluiten</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Om tongentwist te <rhyme label="c" type="m" corresp="#s16:l5">stuiten</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Gelooft zy Godt, die zyn <rhyme label="a" type="f">genade</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">En <rhyme label="b" type="m">goedertierenheit</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Heeft wonderlyk <rhyme label="b" type="m" corresp="#s17:l2">verbreidt</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Aan my, tot 's vyandts schande en <rhyme label="a" type="f" corresp="#s17:l1">schade</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">My voerende in een <rhyme label="c" type="m">sterkte</rhyme>,</l>
        <l id="s17:l6" met="3" type="-+">Dat elk zyn bystant <rhyme label="c" type="m" corresp="#s17:l5">merkte</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Ik zeide wel: 'k ben <rhyme label="a" type="f">afgesneeden</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Van voor uwe oogen, <rhyme label="b" type="m">Heer</rhyme>;</l>
        <l id="s18:l3" met="3" type="-+">Dan hoorde gy noch <rhyme label="b" type="m" corresp="#s18:l2">weêr</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Myn roepen, smeeken, en <rhyme label="a" type="f" corresp="#s18:l1">gebeden</rhyme>.</l>
        <l id="s18:l5" met="3" type="-+">Lieft Godt zyn <rhyme label="c" type="m">gunstgenooten</rhyme>,</l>
        <l id="s18:l6" met="3" type="-+">Hy zal uw heil <rhyme label="c" type="m" corresp="#s18:l5">vergrooten</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Want Godt, de Heer, behoedt de <rhyme label="a" type="f">vroomen</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">En straft den <rhyme label="b" type="m">euvelmoedt</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Door trots en waan <rhyme label="b" type="m" corresp="#s19:l2">gevoedt</rhyme>.</l>
        <l id="s19:l4" met="4" type="-+">Zyt sterk, en hoopt vry zonder <rhyme label="a" type="f" corresp="#s19:l1">schroomen</rhyme></l>
        <l id="s19:l5" met="3" type="-+">Op Godt, hy zal u <rhyme label="c" type="m">sterken</rhyme></l>
        <l id="s19:l6" met="3" type="-+">En 't goede voor u <rhyme label="c" type="m" corresp="#s19:l5">werken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
