  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Herderinne, <rhyme label="a" type="f">Tintel-sterre</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Mijn ghedachten,, gantsche <rhyme label="b" type="f">nachten</rhyme></l>
        <l id="s1:l3" met="5" type="+-">Doet ghy in het riet uws schoonheyts <rhyme label="a" type="f" corresp="#s1:l1">werren</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">O! van verren,, doet ghy <rhyme label="a" type="f" corresp="#s1:l1">berren</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Mijn hert en sinne,, mijn hert en <rhyme label="c" type="f">sinne</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-"><rhyme label="c" type="f" corresp="#s1:l5">Herderinne</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Herderinne pronck der <rhyme label="a" type="f">maeghden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Engelinne,, <rhyme label="b" type="f">veldt-goddinne</rhyme></l>
        <l id="s2:l3" met="5" type="+-">Ach oft! u mijn trouwen dienst <rhyme label="a" type="f" corresp="#s2:l1">behaeghden</rhyme></l>
        <l id="s2:l4" met="4" type="+-">O! ghy jaeghden,, en ghy <rhyme label="a" type="f" corresp="#s2:l1">plaeghden</rhyme></l>
        <l id="s2:l5" met="4" type="-+">My, die u minne,, my, die u <rhyme label="c" type="f">minne</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-"><rhyme label="c" type="f" corresp="#s2:l5">Herderinne</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Herderinne keert u <rhyme label="a" type="f">ooghen</rhyme>?</l>
        <l id="s3:l2" met="4" type="+-">Als een hemel,, naer't <rhyme label="b" type="f">ghewemel</rhyme></l>
        <l id="s3:l3" met="5" type="+-">Van mijn bracke traenen, comt die <rhyme label="a" type="f" corresp="#s3:l1">drooghen</rhyme>?</l>
        <l id="s3:l4" met="4" type="+-">Wilt u pooghen,, tot <rhyme label="a" type="f" corresp="#s3:l1">medooghen</rhyme>?</l>
        <l id="s3:l5" met="4" type="-+">Dat ick u winne, dat ick u <rhyme label="c" type="f">winne</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-"><rhyme label="c" type="f" corresp="#s3:l5">Herderinne</rhyme>.</l>
      </lg>
    </lg>
  </text>
