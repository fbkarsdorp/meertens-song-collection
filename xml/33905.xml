    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE twee-en-tseventigh, de <rhyme label="a" type="m">welk</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Heer Jesus had' voor heen <rhyme label="b" type="f">gesonden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die keeren wederom. sy <rhyme label="a" type="m" corresp="#s1:l1">elk</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Vertellen wat s' hadden <rhyme label="b" type="f" corresp="#s1:l2">bevonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy seggen tot hem, lieven <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">De boose Duyvels <rhyme label="b" type="f">altesame</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die buygen haer na ons <rhyme label="a" type="m" corresp="#s2:l1">begeer</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Door groote kraghte van uw <rhyme label="b" type="f" corresp="#s2:l2">Name</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer Iesus seyde weer tot <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">'k Heb Satan tot het aertsche <rhyme label="b" type="f">dalle</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Gelijk een Blixem, met <rhyme label="a" type="m" corresp="#s3:l1">gevaer</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Sien uyt den Hemel <rhyme label="b" type="f" corresp="#s3:l2">nedervalle</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Siet, ik heb u gegeeven <rhyme label="a" type="m">maght</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Op Scorpioenen ende <rhyme label="b" type="f">Slangen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Te treeden; van all' vyandts <rhyme label="a" type="m" corresp="#s4:l1">kraght</rhyme></l>
        <l id="s4:l4" met="4" type="-+">U-lieden magh geen quaet <rhyme label="b" type="f" corresp="#s4:l2">bevangen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Noghtans weest hier in niet <rhyme label="a" type="m">verblijt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Om dat voor u de Geesten <rhyme label="b" type="f">wijke</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Maer dat gy in-geschreeven <rhyme label="a" type="m" corresp="#s5:l1">sijt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">By name in het <rhyme label="b" type="f" corresp="#s5:l2">Hemelrijke</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Heer Iesus in sijn geest <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Seyd', Heer van Hemel en van <rhyme label="b" type="f">Aerde</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">O Vader, ik aen u <rhyme label="a" type="m" corresp="#s6:l1">belijdt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Gy 't aen de Wijsen niet <rhyme label="b" type="f" corresp="#s6:l2">verklaerde</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De Wijsen en <rhyme label="a" type="m">Voorsichtigen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Gy dit verborgen hebt <rhyme label="b" type="f">gehoude</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Maer gy hebt aen de <rhyme label="a" type="m" corresp="#s7:l1">simpelen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Dit al verklaert, want gy soo <rhyme label="b" type="f" corresp="#s7:l2">woude</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">'k Heb alles van mijn Vaêr <rhyme label="a" type="m">ontfaen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Die welk alleen den Soon kent <rhyme label="b" type="f">klare</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En niemant kan den Vaêr <rhyme label="a" type="m" corresp="#s8:l1">verstaen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Dan dien de Soon wil <rhyme label="b" type="f" corresp="#s8:l2">openbare</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Heer Iesus op sijn Jongers <rhyme label="a" type="m">sagh</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En seyde, saligh sijn die <rhyme label="b" type="f">oogen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Die dat geluk dus beuren <rhyme label="a" type="m" corresp="#s9:l1">magh</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dat gy aenschout, t'aenschouwen <rhyme label="b" type="f" corresp="#s9:l2">moogen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Propheten ende <rhyme label="a" type="m">Koningen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">t'Vergeefs, veel wensten dat sy <rhyme label="b" type="f">souwen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Eens mogen deese <rhyme label="a" type="m" corresp="#s10:l1">wonderen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Als gy, aenhooren, en <rhyme label="b" type="f" corresp="#s10:l2">aenschouwen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Heer, laet ons in ons <rhyme label="a" type="m">simpelheydt</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Dees weldaet waerdelijk <rhyme label="b" type="f">bewaren</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Ons siele wilt door u <rhyme label="a" type="m" corresp="#s11:l1">beleydt</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Met 't geestelijke Licht <rhyme label="b" type="f" corresp="#s11:l2">verklaren</rhyme>.</l>
      </lg>
    </lg>
  </text>
