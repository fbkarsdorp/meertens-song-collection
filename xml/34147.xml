  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Galathea by haer <rhyme label="a" type="f">schaepen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Lestent soetjens lagh in <rhyme label="a" type="f" corresp="#s1:l1">slaepe</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">In het groen belommert <rhyme label="b" type="m">gras</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Coridon is al-daer <rhyme label="c" type="f">ghecomen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Terwyl dat sy bekommert <rhyme label="b" type="m" corresp="#s1:l3">was</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">In stillen slaep met wat te <rhyme label="c" type="f" corresp="#s1:l4">droomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aen-siende blosen haere <rhyme label="a" type="f">wanghen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Coridon die kreegh <rhyme label="a" type="f" corresp="#s2:l1">verlanghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om een te kussen haeren <rhyme label="b" type="m">mont</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Maer om de Maeght niet te <rhyme label="c" type="f">verstooren</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Soo docht het hem den besten <rhyme label="b" type="m" corresp="#s2:l3">vont</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Naer haere droomkens wat te <rhyme label="c" type="f" corresp="#s2:l4">hooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy hoorde haer ghebroken <rhyme label="a" type="f">preken</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Wat magh Coridon <rhyme label="a" type="f" corresp="#s3:l1">ghebreken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat hy my nu niet meerren <rhyme label="b" type="m">mint</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Hy plaght my daghelyckx te <rhyme label="c" type="f">groeten</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">'tScheynt hy nu anders is <rhyme label="b" type="m" corresp="#s3:l3">ghesint</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Syn sinnen seker d'waelen <rhyme label="c" type="f" corresp="#s3:l4">moeten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy die my by-naer alle <rhyme label="a" type="f">daeghen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Synen brandt, en min quam <rhyme label="a" type="f" corresp="#s4:l1">klaeghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die loopt nu henen my <rhyme label="b" type="m">voor-by</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als van een lamp die is <rhyme label="c" type="f">ontsteken</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Neemt hy die olie wegh van <rhyme label="b" type="m" corresp="#s4:l3">my</rhyme>.</l>
        <l id="s4:l6" met="4" type="-+">Want syne liefd' is <rhyme label="c" type="f" corresp="#s4:l4">af-gheweken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer even moet ick noch <rhyme label="a" type="f">bekinnen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dat ick Coridon blyf <rhyme label="a" type="f" corresp="#s5:l1">minnen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Coridon is myn liefste <rhyme label="b" type="m">vrint</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Al scheynt syn liefden <rhyme label="c" type="f">afgheweken</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Hy sal thoonen dat hy my <rhyme label="b" type="m" corresp="#s5:l3">mint</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Kom ick hem maer noch eens te <rhyme label="c" type="f" corresp="#s5:l4">spreken</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Coridon hoorde dese <rhyme label="a" type="f">woorden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Die hem in't herte seer <rhyme label="a" type="f" corresp="#s6:l1">bekoorden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En kost hem niet onthouden <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Hy riep (en kusten haere <rhyme label="c" type="f">wanghen</rhyme>)</l>
        <l id="s6:l5" met="4" type="-+">Hout op van droomen Nymphken <rhyme label="b" type="m" corresp="#s6:l3">teer</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Daer ghy van droomt is u <rhyme label="c" type="f" corresp="#s6:l4">ghevanghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Galathea terstont <rhyme label="a" type="f">ontwaeckte</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Soo hy haer wanghskens maer <rhyme label="a" type="f" corresp="#s7:l1">ghenaeckte</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En liet een suchtjen gansch <rhyme label="b" type="m">verschroomt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En heeft beschaemt hem toe <rhyme label="c" type="f">ghesproken</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Daer ick heb selver van <rhyme label="b" type="m" corresp="#s7:l3">ghedroomt</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Die heeft my self den droom <rhyme label="c" type="f" corresp="#s7:l4">ghebroken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Coridon sprack, ick moet hem <rhyme label="a" type="f">breken</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Want myn ghemoet wirdt soo <rhyme label="a" type="f" corresp="#s8:l1">onsteken</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat ick terstont nu ben <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Myn hert, en ziel, aen u te <rhyme label="c" type="f">jonnen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Op dat-men t'alder-stonde <rhyme label="b" type="m" corresp="#s8:l3">seyt</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Door droom is trouw, en liefd' <rhyme label="c" type="f" corresp="#s8:l4">ghewonnen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Galathea dan wirt te <rhyme label="a" type="f">vreden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Om haere trouw hem te <rhyme label="a" type="f" corresp="#s9:l1">besteden</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Waer op dat sy hem gaf de <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En daer sy van had' ligghen <rhyme label="c" type="f">droomen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Daer is sy aen met trouw <rhyme label="b" type="m" corresp="#s9:l3">verpant</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">En heeft hem in den arm <rhyme label="c" type="f" corresp="#s9:l4">ghenomen</rhyme>.</l>
      </lg>
    </lg>
  </text>
