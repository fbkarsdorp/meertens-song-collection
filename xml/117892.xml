  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk wil met <rhyme label="a" type="m">blij-geschal</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hier in dit Aerdsche <rhyme label="a" type="m" corresp="#s1:l1">dal</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">O Jesu! van u <rhyme label="b" type="f">singen</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s1:l3">ontspringen</rhyme>;</l>
        <l id="s1:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s1:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">All 's weerelts dingen <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Doch maer een yd'le <rhyme label="a" type="m" corresp="#s2:l1">schijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En vol <rhyme label="b" type="f">veranderingen</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s2:l3">ontspringen</rhyme>;</l>
        <l id="s2:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s2:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gy geeft mijn ziele <rhyme label="a" type="m">rust</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Dies hebb' ick grooten <rhyme label="a" type="m" corresp="#s3:l1">lust</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Uw wille te <rhyme label="b" type="f">volbringen</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s3:l3">ontspringen</rhyme>;</l>
        <l id="s3:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s3:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'k Roem opentlick uw <rhyme label="a" type="m">eer</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Ick kan (gy weet het, <rhyme label="a" type="m" corresp="#s4:l1">Heer</rhyme>,)</l>
        <l id="s4:l3" met="3" type="-+">Mijn lippen niet <rhyme label="b" type="f">bedwingen</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s4:l3">ontspringen</rhyme>;</l>
        <l id="s4:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s4:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O! dat altijt soo <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Mijn hert en mijn <rhyme label="a" type="m" corresp="#s5:l1">gemoet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Aen u, mijn Heyland, <rhyme label="b" type="f">hingen</rhyme>!</l>
        <l id="s5:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s5:l3">ontspringen</rhyme>;</l>
        <l id="s5:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s5:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gy stelt my buiten <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Schoon in het dal der <rhyme label="a" type="m" corresp="#s6:l1">doot</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Oock mijne voeten <rhyme label="b" type="f">gingen</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s6:l3">ontspringen</rhyme>;</l>
        <l id="s6:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s6:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">'t Zy bitter ofte <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">'t Zy voor- of <rhyme label="a" type="m" corresp="#s7:l1">tegenspoet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Gy doet het wel <rhyme label="b" type="f">gelingen</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s7:l3">ontspringen</rhyme>;</l>
        <l id="s7:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s7:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Al hebb' ick hier niet <rhyme label="a" type="m">veel</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Op aerden tot mijn <rhyme label="a" type="m" corresp="#s8:l1">deel</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">'k Hebb' in u alle <rhyme label="b" type="f">dingen</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s8:l3">ontspringen</rhyme>;</l>
        <l id="s8:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s8:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Al word' ick hier <rhyme label="a" type="m">bespot</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ick weet, dat is het <rhyme label="a" type="m" corresp="#s9:l1">lot</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Van uwe <rhyme label="b" type="f">lievelingen</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s9:l3">ontspringen</rhyme>;</l>
        <l id="s9:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s9:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ja 's weerelts smaet en <rhyme label="a" type="m">hoon</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Zijn peerlen aen mijn <rhyme label="a" type="m" corresp="#s10:l1">kroon</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die my meer glans toe <rhyme label="b" type="f">bringen</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s10:l3">ontspringen</rhyme>;</l>
        <l id="s10:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s10:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Die sich aen u maer <rhyme label="a" type="m">houdt</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">En vast op u <rhyme label="a" type="m" corresp="#s11:l1">vertrouwt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dien sal uw gunst <rhyme label="b" type="f">omringen</rhyme>.</l>
        <l id="s11:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s11:l3">ontspringen</rhyme>;</l>
        <l id="s11:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s11:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Ick hoop op u, o <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Soo vast, dat niemant <rhyme label="a" type="m" corresp="#s12:l1">weer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Dees' hoop my sal <rhyme label="b" type="f">ontwringen</rhyme>.</l>
        <l id="s12:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s12:l3">ontspringen</rhyme>;</l>
        <l id="s12:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s12:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Gy zijt, o Jesu, <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">En ick ben eeuwigh <rhyme label="a" type="m" corresp="#s13:l1">dijn</rhyme>;</l>
        <l id="s13:l3" met="3" type="-+">Uw liefde komt my <rhyme label="b" type="f">dringen</rhyme>.</l>
        <l id="s13:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s13:l3">ontspringen</rhyme>;</l>
        <l id="s13:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s13:l4">Halelu-jah</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">'k Laet and'ren vrolick <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Om Kooren, Most en <rhyme label="a" type="m" corresp="#s14:l1">Wijn</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Als ick maer dus kan <rhyme label="b" type="f">singen</rhyme>;</l>
        <l id="s14:l4" met="4" type="-+">Het zy hoe 't my alhier oock <rhyme label="c" type="m">ga</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Gy doet mijn hert van vreugt <rhyme label="b" type="f" corresp="#s14:l3">ontspringen</rhyme>,</l>
        <l id="s14:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s14:l4">Halleluja</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
