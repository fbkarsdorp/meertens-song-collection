<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184940</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Wanneer ik slaap</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAer zijn nu alle Hemel <rhyme label="a" type="f">helden</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die hare lusten eertijts <rhyme label="a" type="f" corresp="#s1:l1">velden</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Of die 't neemt ernstigh <rhyme label="b" type="m">voor</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Is op het <rhyme label="b" type="m" corresp="#s1:l3">spoor</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Om met ons te <rhyme label="c" type="m">treen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Hier om laegh <rhyme label="c" type="m" corresp="#s1:l5">beneen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Hier om laegh beneen op <rhyme label="d" type="f">d'aerden</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Voor Godt en 't lam van hooge <rhyme label="d" type="f" corresp="#s1:l7">waerden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Eerst wetend' dat de lust der <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Met al dat hier de Ziel kan <rhyme label="a" type="f" corresp="#s2:l1">wonden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ter neder wordt <rhyme label="b" type="m">gevelt</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Met haer <rhyme label="b" type="m" corresp="#s2:l3">gewelt</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">En slacht <rhyme label="c" type="m">d'offerhant</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Wiens roock ende <rhyme label="c" type="m" corresp="#s2:l5">brandt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Nu ten Hemel, sacht komt <rhyme label="d" type="f">stijgen</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">En Godes gunste daer <rhyme label="d" type="f" corresp="#s2:l7">verkrijgen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit is het geen hem kan <rhyme label="a" type="f">behagen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En wie dien slagh met my durf <rhyme label="a" type="f" corresp="#s3:l1">wagen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die treet nu voor de <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Met sijn <rhyme label="b" type="m" corresp="#s3:l3">verstandt</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">En laet Godes <rhyme label="c" type="m">reen</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Nu het hert <rhyme label="c" type="m" corresp="#s3:l5">bekleen</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Niet ten deel, maer heel en <rhyme label="d" type="f">d'allen</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Om niet in eenigh quaedt te <rhyme label="d" type="f" corresp="#s3:l7">vallen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want al wat vleeschlijck is, moet <rhyme label="a" type="f">henen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">De held're dagh is nu <rhyme label="a" type="f" corresp="#s4:l1">verschenen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ons Heer, en <rhyme label="b" type="m">opper-hooft</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Heeft nu <rhyme label="b" type="m" corresp="#s4:l3">verdooft</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Al het geen wel <rhyme label="c" type="m">eer</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Onder Moyses <rhyme label="c" type="m" corresp="#s4:l5">leer</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Scheen den zegen mee te <rhyme label="d" type="f">brengen</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Maer 't leven, niet en kon <rhyme label="d" type="f" corresp="#s4:l7">verlengen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wel aen die dan u lust wilt <rhyme label="a" type="f">soecken</rhyme></l>
        <l id="s5:l2" met="4" type="-+">In 't open slaen van nieuwe <rhyme label="a" type="f" corresp="#s5:l1">boecken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hoort wat ons Veldt-heer <rhyme label="b" type="m">seydt</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">En u voor <rhyme label="b" type="m" corresp="#s5:l3">leydt</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">In het nieuwe <rhyme label="c" type="m">verbondt</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Als een vasten <rhyme label="c" type="m" corresp="#s5:l5">grondt</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Ons van sijn gesant is <rhyme label="d" type="f">beschreven</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Waer door men eeuwigh komt te <rhyme label="d" type="f" corresp="#s5:l7">leven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hier is geen voorhuyt te <rhyme label="a" type="f">besnijden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Gelijck wel eer in oude <rhyme label="a" type="f" corresp="#s6:l1">tijden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Van 't onverstandigh <rhyme label="b" type="m">Kindt</rhyme>;</l>
        <l id="s6:l4" met="2" type="-+">Het welck men <rhyme label="b" type="m" corresp="#s6:l3">mindt</rhyme>:</l>
        <l id="s6:l5" met="3" type="+-">Maer 't geheele <rhyme label="c" type="m">lijf</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Moet verstaelt en <rhyme label="c" type="m" corresp="#s6:l5">stijf</rhyme></l>
        <l id="s6:l7" met="4" type="+-">Van de deught zijn <rhyme label="d" type="f">ingenomen</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Wil men ten hoogen Hemel <rhyme label="d" type="f" corresp="#s6:l7">komen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ontlast dan uwe <rhyme label="a" type="f">phantasye</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die tegen dit verbondt maer <rhyme label="a" type="f" corresp="#s7:l1">strye</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Want al dat vleyschlijck <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Geen deel en <rhyme label="b" type="m" corresp="#s7:l3">heeft</rhyme>,</l>
        <l id="s7:l5" met="3" type="+-">Aen des Hemels <rhyme label="c" type="m">kroon</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Dien Godt tot een <rhyme label="c" type="m" corresp="#s7:l5">loon</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Dien hy tot een loon wil <rhyme label="d" type="f">schencken</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Meer dat het aerdts vernuft kan <rhyme label="d" type="f" corresp="#s7:l7">dencken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Op schortend dan de kracht der <rhyme label="a" type="f">lenden</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Om alle passyen te <rhyme label="a" type="f" corresp="#s8:l1">wenden</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Na Godts volmaeckt <rhyme label="b" type="m">besluyt</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Het welck hy <rhyme label="b" type="m" corresp="#s8:l3">uyt</rhyme>,</l>
        <l id="s8:l5" met="3" type="+-">In 't volmaeckte <rhyme label="c" type="m">woordt</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Nu soo langh <rhyme label="c" type="m" corresp="#s8:l5">gehoort</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Nu soo langh gehoort van <rhyme label="d" type="f">Gode</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">'tGeen hy door Christus heeft <rhyme label="d" type="f" corresp="#s8:l7">geboden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
