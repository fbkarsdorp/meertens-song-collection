    <melody>Zeg mij toch wel zoete lieve maagd</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">Jesus tot de Phariseesche <rhyme label="a" type="m">Bend'</rhyme></l>
        <l id="s1:l2" met="6" type="+-">Heeft gesprooken, siet, ik tot u-lieden <rhyme label="a" type="m" corresp="#s1:l1">send'</rhyme></l>
        <l id="s1:l3" met="5" type="+-">Wijse Mannen, en Propheeten <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s1:l4" met="5" type="+-">En Schrift-geleerden, die gy sult smijten <rhyme label="b" type="m" corresp="#s1:l3">doodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Sommigh van haer gy-lie kruycen <rhyme label="a" type="m">sult</rhyme>,</l>
        <l id="s2:l2" met="6" type="+-">Sommigh geesselen, vervolgen sonder <rhyme label="a" type="m" corresp="#s2:l1">schult</rhyme>,</l>
        <l id="s2:l3" met="5" type="+-">Dat op u kom 't bloet der <rhyme label="b" type="m">Heyligen</rhyme>,</l>
        <l id="s2:l4" met="5" type="+-">Welk op d' Aerdt is gestort <rhyme label="b" type="m" corresp="#s2:l3">onrechtvaerd'lijken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Al van Abel tot aen <rhyme label="a" type="m">Zachary</rhyme>,</l>
        <l id="s3:l2" met="6" type="+-">Soone van Barachias, de welke <rhyme label="a" type="m" corresp="#s3:l1">gy</rhyme></l>
        <l id="s3:l3" met="5" type="+-">Tusschen Tempel ende den <rhyme label="b" type="m">Autaer</rhyme></l>
        <l id="s3:l4" met="5" type="+-">Gedoodt hebt, en daerom segh ik u, <rhyme label="b" type="m" corresp="#s3:l3">voorwaer</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Dit op deese generati <rhyme label="a" type="m">al</rhyme></l>
        <l id="s4:l2" met="6" type="+-">Wisselijke nogh eens over-koomen <rhyme label="a" type="m" corresp="#s4:l1">sal</rhyme>.</l>
        <l id="s4:l3" met="5" type="+-">O Jerusalem, die steent, en <rhyme label="b" type="m">moort</rhyme></l>
        <l id="s4:l4" met="5" type="+-">Propheeten, die tot u van Godt koomen <rhyme label="b" type="m" corresp="#s4:l3">voort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="+-">Hoe dik heb ik uwe <rhyme label="a" type="m">Kinderen</rhyme>,</l>
        <l id="s5:l2" met="6" type="+-">Als een Hen haer Kuykens met haer <rhyme label="a" type="m" corresp="#s5:l1">vleugelen</rhyme>,</l>
        <l id="s5:l3" met="5" type="+-">Willen gaderen; maer gy <rhyme label="b" type="m">versmaet</rhyme>,</l>
        <l id="s5:l4" met="5" type="+-">Siet daerom ik uw huys heel verwoest <rhyme label="b" type="m" corresp="#s5:l3">verlaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="+-">Want gy mijn voortaen na deesen <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s6:l2" met="6" type="+-">Niet sult sien, voor dat gy seght, <rhyme label="a" type="m" corresp="#s6:l1">gebenedijt</rhyme></l>
        <l id="s6:l3" met="5" type="+-">Is hy die komt in des Heeren <rhyme label="b" type="m">Naem</rhyme>.</l>
        <l id="s6:l4" met="5" type="+-">Gebenedijt sijt gy van ons al te <rhyme label="b" type="m" corresp="#s6:l3">saem</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="+-">Jesu, Goodes Soon, <rhyme label="a" type="m">gebenedijt</rhyme></l>
        <l id="s7:l2" met="6" type="+-">Moet gy weesen, nu en ook tot aller <rhyme label="a" type="m" corresp="#s7:l1">tijdt</rhyme>,</l>
        <l id="s7:l3" met="5" type="+-">Dat gy onse kranke menscheyt <rhyme label="b" type="m">hier</rhyme></l>
        <l id="s7:l4" met="5" type="+-">Besoekt soo minnelijk, en soo <rhyme label="b" type="m" corresp="#s7:l3">goedertier</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
