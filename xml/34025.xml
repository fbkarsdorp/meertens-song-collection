  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">NAe dat de <rhyme label="a" type="f">Prophetijen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van hem waren <rhyme label="b" type="m">vervuldt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Van al sijn bitter <rhyme label="a" type="f" corresp="#s1:l1">lijen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om onse groote <rhyme label="b" type="m" corresp="#s1:l2">schuldt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En had geproeft de bitter <rhyme label="c" type="m">gal</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Al om ons te <rhyme label="a" type="f" corresp="#s1:l1">bevrijen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Van den grouwelijken <rhyme label="c" type="m" corresp="#s1:l5">val</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Heeft hy sijn VaÃªr <rhyme label="a" type="f">gegeeven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met luyder stem sijn <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Aerdt begost te <rhyme label="a" type="f" corresp="#s2:l1">beeven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En nogh is daer <rhyme label="b" type="m" corresp="#s2:l2">geweest</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Met haest een duysternisse <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En veel sijn daer <rhyme label="a" type="f" corresp="#s2:l1">beneeven</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Verresen van der <rhyme label="c" type="m" corresp="#s2:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sijn kleedt aen vier sy <rhyme label="a" type="f">deele</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Een stuk voor elk <rhyme label="b" type="m">Soldaet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Den Rok sy lieten <rhyme label="a" type="f" corresp="#s3:l1">heele</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Want die was sonder <rhyme label="b" type="m" corresp="#s3:l2">naet</rhyme>;</l>
        <l id="s3:l5" met="4" type="-+">Sy seggen, breeken wy die <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Maer laet ons daer om <rhyme label="a" type="f" corresp="#s3:l1">speele</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En 't is alsoo <rhyme label="c" type="m" corresp="#s3:l5">geschiet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'t Voorhanghsel van de <rhyme label="a" type="f">Kerke</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Veel steenen sijn <rhyme label="b" type="m">gescheurt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">'t Is geen natuerlijk <rhyme label="a" type="f" corresp="#s4:l1">werke</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Al dat 'er nu <rhyme label="b" type="m" corresp="#s4:l2">gebeurt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">De luyden die hier rontom <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Beginnen te <rhyme label="a" type="f" corresp="#s4:l1">bemerke</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Siet hoe s' haer borsten <rhyme label="c" type="m" corresp="#s4:l5">slaen</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ogh, daer komt nogh aen <rhyme label="a" type="f">rijde</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Een seer moetwilligh <rhyme label="b" type="m">quant</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wreedt sonder <rhyme label="a" type="f" corresp="#s5:l1">meedelijde</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Met eene spies in d' <rhyme label="b" type="m" corresp="#s5:l2">handt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Die wondt sijn hart nogh na de <rhyme label="c" type="m">doodt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dus vloeyt 'er uyt sijn <rhyme label="a" type="f" corresp="#s5:l1">sijde</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Water en Bloede <rhyme label="c" type="m" corresp="#s5:l5">roodt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Het was Goods Soon <rhyme label="a" type="f">waeraghtigh</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">Seydt nu den <rhyme label="b" type="m">Capiteyn</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Met al het volk <rhyme label="a" type="f" corresp="#s6:l1">eendraghtigh</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En sughten in 't <rhyme label="b" type="m" corresp="#s6:l2">gemeyn</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">O Godt, gy toont het nu soo <rhyme label="c" type="m">klaer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Door uw' miraklen <rhyme label="a" type="f" corresp="#s6:l1">kraghtigh</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Het is Goodts Soon <rhyme label="c" type="m" corresp="#s6:l5">voorwaer</rhyme>!</l>
      </lg>
    </lg>
  </text>
