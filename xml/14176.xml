  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk jonne u vrienden <rhyme label="a" type="m">deligent</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hier in dit liedeken <rhyme label="b" type="m">nieu</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Des Heer en vrede <rhyme label="a" type="m" corresp="#s1:l1">obedient</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Wensche ick u voor een <rhyme label="b" type="m" corresp="#s1:l2">adieu</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wy die nu moeten <rhyme label="c" type="f">scheyden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Van een op dit <rhyme label="d" type="m">termijn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Gods Geest wil u <rhyme label="c" type="f" corresp="#s1:l5">geleyden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">In eeuwicheyt <rhyme label="d" type="m" corresp="#s1:l6">devijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer als den Geest des heeren <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">By ons blijft in <rhyme label="b" type="m">ghedeuricheyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo is hier het scheyden <rhyme label="a" type="m" corresp="#s2:l1">certeyn</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Veel te minder <rhyme label="b" type="m" corresp="#s2:l2">treuricheyt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dats om dat wy <rhyme label="c" type="f">verwachten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Te versamen met <rhyme label="d" type="m">eer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">By t'Israels <rhyme label="c" type="f" corresp="#s2:l5">gheslachte</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Daer gheen scheyden wert <rhyme label="d" type="m" corresp="#s2:l6">meer</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Eer wy daer versamen <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">By den Heere <rhyme label="b" type="m">blydelick</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soo is hier geen scheyden <rhyme label="a" type="m" corresp="#s3:l1">ydoon</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">In dit leven <rhyme label="b" type="m" corresp="#s3:l2">tijdelick</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">t'Welck men dickmaels met <rhyme label="c" type="f">treuren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Doet teghen zijn <rhyme label="d" type="m">ghemoet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Soo men wel siet <rhyme label="c" type="f" corresp="#s3:l5">ghebeuren</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Aen u mijn vrienden <rhyme label="d" type="m" corresp="#s3:l6">vroet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer al scheyden wy nu <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Lichamelick int af wesen <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Laet ons met den geest <rhyme label="a" type="m" corresp="#s4:l1">goedertier</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Eenich zijn tot inde <rhyme label="b" type="m" corresp="#s4:l2">doot</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">De liefde niet <rhyme label="c" type="f">vergeten</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Al worden wy <rhyme label="d" type="m">absent</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Van malcanderen <rhyme label="c" type="f" corresp="#s4:l5">gheseten</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Soo u wel is <rhyme label="d" type="m" corresp="#s4:l6">bekent</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Laet liefde niet vergeten <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Int afwesen <rhyme label="b" type="m">onvreuchdelijck</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maer laetse vierich blijcken <rhyme label="a" type="m" corresp="#s5:l1">sijn</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">In u ghebeden <rhyme label="b" type="m" corresp="#s5:l2">deuchdelijck</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Wilt ons alsoo <rhyme label="c" type="f">ghedencken</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Tot Godt den Heere <rhyme label="d" type="m">expeert</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Die u milde can <rhyme label="c" type="f" corresp="#s5:l5">schencken</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">t Gheene dat ghy <rhyme label="d" type="m" corresp="#s5:l6">begheert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wilt ons alsoo ghedencken <rhyme label="a" type="m">coen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">In u ghebet tot Godt <rhyme label="b" type="m">expres</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wy willen van den selven <rhyme label="a" type="m" corresp="#s6:l1">doen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Soo veel als ons vemoghen <rhyme label="b" type="m" corresp="#s6:l2">es</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Oock somtijts over <rhyme label="c" type="f">schrijven</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Hoe dat met ons al <rhyme label="d" type="m">gaet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Op dat door sulcx <rhyme label="c" type="f" corresp="#s6:l5">bedrijven</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Blijcken der liefden <rhyme label="d" type="m" corresp="#s6:l6">daet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Deur sulck doen lieve vrienden <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Bewijst men dat de liefde <rhyme label="b" type="m">werckt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Alsmen deur schrijven uyt gods <rhyme label="a" type="m" corresp="#s7:l1">woort</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Malcanderen t'gemoet <rhyme label="b" type="m" corresp="#s7:l2">versterckt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Dus vrienden <rhyme label="c" type="f">eersame</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Nu noch tot gheender <rhyme label="d" type="m">tijt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">In het schrijven <rhyme label="c" type="f" corresp="#s7:l5">bequaeme</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Niet vergetelick <rhyme label="d" type="m" corresp="#s7:l6">zijt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hier mee soo wil ick laeten <rhyme label="a" type="m">of</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En tot een teecken van <rhyme label="b" type="m">eenicheyt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Soo wil ick nemen <rhyme label="a" type="m" corresp="#s8:l1">oorlof</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Tot een bewijs van goet <rhyme label="b" type="m" corresp="#s8:l2">afscheyt</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Om de liefde te <rhyme label="c" type="f">vermeeren</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Wensch ick my wel <rhyme label="d" type="m">verstaet</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">V die vrede des <rhyme label="c" type="f" corresp="#s8:l5">Heeren</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Eeuwich sonder <rhyme label="d" type="m" corresp="#s8:l6">aflaet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Voor een besluyt begere ick <rhyme label="a" type="m">noch</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Aen u mijn lieve vrienden <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Ende wilt het gedencken <rhyme label="a" type="m" corresp="#s9:l1">doch</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dat ghy my de bekende <rhyme label="b" type="m" corresp="#s9:l2">groet</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Wensche haer des Heeren <rhyme label="c" type="f">vrede</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Wt broederlicke <rhyme label="d" type="m">se</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">t'Gheloove, liefde <rhyme label="c" type="f" corresp="#s9:l5">mede</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Ghelijck Paulus <rhyme label="d" type="m" corresp="#s9:l6">de</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
