    <melody>Godin Venus schoon</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LAet dan de <rhyme label="a" type="m">Ketterij</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Geen stand van leven <rhyme label="a" type="m" corresp="#s1:l1">vrij</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Of was ’t haer niet <rhyme label="b" type="m">genoeg</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Datz’ ons het reyn <rhyme label="b" type="m" corresp="#s1:l3">verjoeg</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ten waer dat haren <rhyme label="c" type="m">haet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ook schende d’ <rhyme label="c" type="m" corresp="#s1:l5">Echte-staet</rhyme>?</l>
        <l id="s1:l7" met="2" type="-+">O Heer geeft <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s1:l8" met="2" type="-+">De eer Aen ’t <rhyme label="e" type="m">Echt</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Die Luther ons <rhyme label="e" type="m" corresp="#s1:l8">bevecht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De eer van <rhyme label="a" type="m">Sacrament</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die Paulus  heeft <rhyme label="a" type="m" corresp="#s2:l1">erkendt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">En met hem even <rhyme label="b" type="m">sterk</rhyme></l>
        <l id="s2:l4" met="3" type="-+">De gansche Christen <rhyme label="b" type="m" corresp="#s2:l3">Kerk</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Daer van ons geven <rhyme label="c" type="m">blijk</rhyme></l>
        <l id="s2:l6" met="3" type="-+">d’Oudvaders all’ <rhyme label="c" type="m" corresp="#s2:l5">gelijk</rhyme>.</l>
        <l id="s2:l7" met="2" type="-+">O Heer geeft <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s2:l8" met="2" type="-+">De eer Aen ’t <rhyme label="e" type="m">Echt</rhyme></l>
        <l id="s2:l9" met="3" type="+-">Die Luther ons <rhyme label="e" type="m" corresp="#s2:l8">bevecht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O Echt! O heilig <rhyme label="a" type="m">werk</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Verzaemt van Godes <rhyme label="a" type="m" corresp="#s3:l1">Kerk</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Geknocht van Priesters <rhyme label="b" type="m">hand</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gestijfft door <rhyme label="b" type="m" corresp="#s3:l3">offerand</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Van d’ Eng’len <rhyme label="c" type="m">aengeboon</rhyme></l>
        <l id="s3:l6" met="3" type="-+">G’aenvaerd van d’hoogsten <rhyme label="c" type="m" corresp="#s3:l5">Throon</rhyme>.</l>
        <l id="s3:l7" met="2" type="-+">O Heer geeft <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s3:l8" met="2" type="-+">De eer Aen ’t <rhyme label="e" type="m">Echt</rhyme></l>
        <l id="s3:l9" met="3" type="+-">Die Luther ons <rhyme label="e" type="m" corresp="#s3:l8">bevecht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den heil’gen <rhyme label="a" type="m">Augustijn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Mondstopper van <rhyme label="a" type="m" corresp="#s4:l1">Calvijn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Gaf ons het <rhyme label="b" type="m">Sacrament</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Des huw’lijks, tot <rhyme label="b" type="m" corresp="#s4:l3">belend</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Van ’t Heydendomse <rhyme label="c" type="m">juk</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">En ’t Christelijk <rhyme label="c" type="m" corresp="#s4:l5">geluk</rhyme>.</l>
        <l id="s4:l7" met="2" type="-+">O Heer geeft <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s4:l8" met="2" type="-+">De eer Aen ’t <rhyme label="e" type="m">Echt</rhyme></l>
        <l id="s4:l9" met="3" type="+-">Die Luther ons <rhyme label="e" type="m" corresp="#s4:l8">bevecht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dit tuygen even <rhyme label="a" type="m">rond</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ambrosius, <rhyme label="a" type="m" corresp="#s5:l1">Guldemond</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Siricius. en <rhyme label="b" type="m">Cyril</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En meer, die meerder <rhyme label="b" type="m" corresp="#s5:l3">wil</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Met wien ik mijn <rhyme label="c" type="m">gevoel</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Buig nae de Roomse <rhyme label="c" type="m" corresp="#s5:l5">stoel</rhyme>.</l>
        <l id="s5:l7" met="2" type="-+">O Heer geeft <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s5:l8" met="2" type="-+">De eer Aen ’t <rhyme label="e" type="m">Echt</rhyme></l>
        <l id="s5:l9" met="3" type="+-">Die Luther ons <rhyme label="e" type="m" corresp="#s5:l8">bevecht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">’t Is zeker al te <rhyme label="a" type="m">stout</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Een les zoo waer, zoo <rhyme label="a" type="m" corresp="#s6:l1">oud</rhyme></l>
        <l id="s6:l3" met="3" type="-+">t’Onkennen, op het <rhyme label="b" type="m">woord</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Van die door vleesch <rhyme label="b" type="m" corresp="#s6:l3">bekoord</rhyme></l>
        <l id="s6:l5" met="3" type="-+">De Goddelijkke <rhyme label="c" type="m">schrift</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Trok nae zijn eigen <rhyme label="c" type="m" corresp="#s6:l5">drift</rhyme>.</l>
        <l id="s6:l7" met="2" type="-+">O Heer geeft <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s6:l8" met="2" type="-+">De eer Aen ’t <rhyme label="e" type="m">Echt</rhyme></l>
        <l id="s6:l9" met="3" type="+-">Die Luther ons <rhyme label="e" type="m" corresp="#s6:l8">bevecht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den snoden <rhyme label="a" type="m">Apostaet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Alzoo hy ’t vuil <rhyme label="a" type="m" corresp="#s7:l1">gelaet</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Met zijn ontkapte <rhyme label="b" type="m">Non</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Niet tomen wou, <rhyme label="b" type="m" corresp="#s7:l3">verzon</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Een lering naeden <rhyme label="c" type="m">eisch</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Van zijn bedurve <rhyme label="c" type="m" corresp="#s7:l5">vleisch</rhyme>.</l>
        <l id="s7:l7" met="2" type="-+">O Heer geeft <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s7:l8" met="2" type="-+">De eer Aen ’t <rhyme label="e" type="m">Echt</rhyme></l>
        <l id="s7:l9" met="3" type="+-">Die Luther ons <rhyme label="e" type="m" corresp="#s7:l8">bevecht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Verfoeyt dan, heilig <rhyme label="a" type="m">Echt</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">Den ongezonden <rhyme label="a" type="m" corresp="#s8:l1">knecht</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Die door zijn nieuwe <rhyme label="b" type="m">wet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Van uw’ Godvrezend <rhyme label="b" type="m" corresp="#s8:l3">bed</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Een Sacrament zoo <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Schoffierelijk <rhyme label="c" type="m" corresp="#s8:l5">verstoot</rhyme>.</l>
        <l id="s8:l7" met="2" type="-+">O Heer geeft <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s8:l8" met="2" type="-+">De eer Aen ’t <rhyme label="e" type="m">Echt</rhyme></l>
        <l id="s8:l9" met="3" type="+-">Die Luther ons <rhyme label="e" type="m" corresp="#s8:l8">bevecht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
