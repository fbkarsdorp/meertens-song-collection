  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Laffe zielen, die u <rhyme label="a" type="m">zin</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gezet hebt op een <rhyme label="b" type="m">Vrouw</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">En met dat voorwerp uwer <rhyme label="a" type="m" corresp="#s1:l1">min</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Vereent zyt door den <rhyme label="b" type="m" corresp="#s1:l2">trouw</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daar ge echter, zonder <rhyme label="a" type="m">Minnenyd</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Gerust aan schouwen <rhyme label="b" type="m">kund</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat elk u lieve Vrouwtje <rhyme label="a" type="m" corresp="#s2:l1">vreid</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Gy elk haar schoonheid <rhyme label="b" type="m" corresp="#s2:l2">gund</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hoe kund gy roemen dat de <rhyme label="a" type="m">Min</rhyme></l>
        <l id="s3:l2" met="3" type="-+">U hart in Liefde <rhyme label="b" type="m">blaakt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Daar gy het zoet van u <rhyme label="a" type="m" corresp="#s3:l1">Vrindin</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Aan meer deelagtig <rhyme label="b" type="m" corresp="#s3:l2">maakt</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">draagt gy u Hoornen, ryk van <rhyme label="a" type="m">Eer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Zo willig? zo <rhyme label="b" type="m">beleeft</rhyme>?.....</l>
        <l id="s4:l3" met="4" type="-+">Hoewel 't is nu geen schanden <rhyme label="a" type="m" corresp="#s4:l1">meer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Indien 't maar voordeel <rhyme label="b" type="m" corresp="#s4:l2">geeft</rhyme>.</l>
      </lg>
    </lg>
