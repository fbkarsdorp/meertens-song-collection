  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">‘k Hoor die kleine vlugge <rhyme label="a" type="f">dieren</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Om my <rhyme label="a" type="f" corresp="#s1:l1">zwieren</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Zuizen met een scherp <rhyme label="b" type="m">geluit</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">’t Lijkt zy blaazen met <rhyme label="c" type="f">Trompetten</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">’t Staat te <rhyme label="c" type="f" corresp="#s1:l4">letten</rhyme></l>
        <l id="s1:l6" met="4" type="+-">‘k Merk zy geven lessen <rhyme label="b" type="m" corresp="#s1:l3">uit</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Spiessen wapens niet <rhyme label="a" type="f">ontbreeken</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Want zy <rhyme label="a" type="f" corresp="#s2:l1">steeken</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Ons, en zuigen noch het <rhyme label="b" type="m">bloedt</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Waarze ons maar konnen <rhyme label="c" type="f">naaken</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Zy slechs <rhyme label="c" type="f" corresp="#s2:l4">raaken</rhyme>!</l>
        <l id="s2:l6" met="4" type="+-">Tot zy koelen haare <rhyme label="b" type="m" corresp="#s2:l3">moedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Traage mensch! om uw te <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Godt te <rhyme label="a" type="f" corresp="#s3:l1">eeren</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Geven deze Diertjens <rhyme label="b" type="m">stof</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Die haar ’t wezen heeft <rhyme label="c" type="f">gegeven</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">En doet <rhyme label="c" type="f" corresp="#s3:l4">leven</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">Geeft doch uwen Schepper <rhyme label="b" type="m" corresp="#s3:l3">lof</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vliegen zy uw om de <rhyme label="a" type="f">Ooren</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s4:l1">verstooren</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Uwen slaap, en breken <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dit moet uwe ziel op <rhyme label="c" type="f">wekken</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Zich te <rhyme label="c" type="f" corresp="#s4:l4">strekken</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Tot haar plicht, met meerder <rhyme label="b" type="m" corresp="#s4:l3">lust</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Laat ons Godt in alles <rhyme label="a" type="f">kennen</rhyme>;</l>
        <l id="s5:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s5:l1">gewennen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Tot dienst zijner <rhyme label="b" type="m">Majesteit</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Van, en door, wien dat wy <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Hy wil <rhyme label="c" type="f" corresp="#s5:l4">geven</rhyme>!</l>
        <l id="s5:l6" met="4" type="+-">Leven tot in <rhyme label="b" type="m" corresp="#s5:l3">eeuwigheit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
