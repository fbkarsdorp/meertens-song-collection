  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HAarloo, schoon ghy ons wat <rhyme label="a" type="f">verder</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dan ons' andre buerten, <rhyme label="b" type="m">woont</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'k Sie nochtans, hoe ghy uw <rhyme label="a" type="f" corresp="#s1:l1">Harder</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Alle liefd' en gunst <rhyme label="b" type="m" corresp="#s1:l2">betoont</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Gy begeert, na mijn <rhyme label="c" type="f">genoegen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Tot geschicklikheit en <rhyme label="d" type="m">deugt</rhyme></l>
        <l id="s1:l7" met="4" type="+-">U in alles mee te <rhyme label="c" type="f" corresp="#s1:l5">voegen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Waer gy immer kont of <rhyme label="d" type="m" corresp="#s1:l6">meugt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Kom ick u Kappell'ken <rhyme label="a" type="f">nadren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Gy kont, sonder <rhyme label="b" type="m">Klok-geluit</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Haast tot my by-een <rhyme label="a" type="f" corresp="#s2:l1">vergadren</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Lust en liefe lokt u <rhyme label="b" type="m" corresp="#s2:l2">uit</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Als gy dan, soo mans als <rhyme label="c" type="f">vrouwen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Weer-zijds fraai beset uw <rhyme label="d" type="m">perk</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Lijkt, in 't aangenaam <rhyme label="c" type="f" corresp="#s2:l5">aanschouwen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Uw kapell'ken wel een <rhyme label="d" type="m" corresp="#s2:l6">kerk</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'k Voeg my daar, in alle <rhyme label="a" type="f">wijse</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Willig na 't begrijp van <rhyme label="b" type="m">elk</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">'k Voed u, niet met vaste <rhyme label="a" type="f" corresp="#s3:l1">spijse</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Maar, als Kinderkens, met <rhyme label="b" type="m" corresp="#s3:l2">melk</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Wilt daar na soo yvrig <rhyme label="c" type="f">haken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Groeit 'er soo geneuglik <rhyme label="d" type="m">by</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Dat gy proeven meugt en <rhyme label="c" type="f" corresp="#s3:l5">smaken</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Hoe goedaardig Jesus <rhyme label="d" type="m" corresp="#s3:l6">zy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Komt soo, na mijns herten <rhyme label="a" type="f">wenschen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Tot dien levendigen <rhyme label="b" type="m">steen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Wel verworpen van de <rhyme label="a" type="f" corresp="#s4:l1">menschen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Maer by Godt seer dierbaar, <rhyme label="b" type="m" corresp="#s4:l2">treen</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Ja wordt gy oock selfs, met <rhyme label="c" type="f">eenen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Tot een geestelijck <rhyme label="d" type="m">gebouw</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Soo als levendige <rhyme label="c" type="f" corresp="#s4:l5">steenen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Datter Godt sijn vreugt aan <rhyme label="d" type="m" corresp="#s4:l6">schouw</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Of nu onse <rhyme label="a" type="f">Kerspel-kerke</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Juist wat verder van u <rhyme label="b" type="m">leit</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Dat geeft aan gesond' en <rhyme label="a" type="f" corresp="#s5:l1">sterke</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Klein' of geene <rhyme label="b" type="m" corresp="#s5:l2">moeilikheyt</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Dikwils sou een Christen <rhyme label="c" type="f">haken</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Om langs sulk een soete <rhyme label="d" type="m">wegh</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Sijn gemoet wat te <rhyme label="c" type="f" corresp="#s5:l5">vermaken</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Met aandachtig <rhyme label="d" type="m" corresp="#s5:l6">overlegh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Om al't aardsch gepeins te <rhyme label="a" type="f">bannen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">En uw hert en sin te <rhyme label="b" type="m">saam</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Tot het hemelsch in te <rhyme label="a" type="f" corresp="#s6:l1">spannen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Is die Kerk-weg seer <rhyme label="b" type="m" corresp="#s6:l2">bequaam</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Wie met vreugt dien wil <rhyme label="c" type="f">passeren</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">'t Zy verselschapt, of <rhyme label="d" type="m">alleen</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Moet, in 't heen-en <rhyme label="c" type="f" corresp="#s6:l5">weder-keeren</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Al sijn tijd aen God <rhyme label="d" type="m" corresp="#s6:l6">besteen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">O ! hoe ging de schaar, <rhyme label="a" type="f">ver-eenigt</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Eertijts met een blijde <rhyme label="b" type="m">gang</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En de feestelijcke <rhyme label="a" type="f" corresp="#s7:l1">menigt</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Na Godts huis met <rhyme label="b" type="m" corresp="#s7:l2">vreugden-sang</rhyme> !</l>
        <l id="s7:l5" met="4" type="+-">Hoe wierdt doe met lof en <rhyme label="c" type="f">Psalmen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Sulk een lange weg <rhyme label="d" type="m">verkort</rhyme> !</l>
        <l id="s7:l7" met="4" type="+-">D'eene troep wierd door de <rhyme label="c" type="f" corresp="#s7:l5">galmen</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Van een ander <rhyme label="d" type="m" corresp="#s7:l6">aangeport</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Haarloo, leert gy ook soo <rhyme label="a" type="f">door-gaan</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Set u op't gebaande <rhyme label="b" type="m">padt</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">Die altijt op d'effen spoor <rhyme label="a" type="f" corresp="#s8:l1">gaan</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Worden niet licht moe noch <rhyme label="b" type="m" corresp="#s8:l2">mat</rhyme> ?</l>
        <l id="s8:l5" met="4" type="+-">Die den Heere steeds <rhyme label="c" type="f">verwachten</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Varen opwaarts, als <rhyme label="d" type="m">gevlerkt</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">En verkrijgen nieuwe <rhyme label="c" type="f" corresp="#s8:l5">krachten</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Daar sijn Geest haer mee <rhyme label="d" type="m" corresp="#s8:l6">versterkt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Mits gy door uw aardsche <rhyme label="a" type="f">luister</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Elcke Buert' te boven <rhyme label="b" type="m">gaat</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Blinckt oock, als een licht in 't <rhyme label="a" type="f" corresp="#s9:l1">duyster</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Meest door heiligheits <rhyme label="b" type="m" corresp="#s9:l2">cieraat</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Godt verlicht' u door sijn <rhyme label="c" type="f">klaarheit</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Dat uw zielen <rhyme label="d" type="m">allermeest</rhyme></l>
        <l id="s9:l7" met="4" type="+-">In gehoorsaemheit der <rhyme label="c" type="f" corresp="#s9:l5">waarheit</rhyme></l>
        <l id="s9:l8" met="4" type="+-">Zijn gereinigt door den <rhyme label="d" type="m" corresp="#s9:l6">Geest</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Laat de broederliefde <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s10:l2" met="4" type="+-">In uw herten vierig <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Dat gy steeds malkaar meught <rhyme label="a" type="f" corresp="#s10:l1">minnen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Ongeveinst en sonder <rhyme label="b" type="m" corresp="#s10:l2">schijn</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Leeft soo minlik met <rhyme label="c" type="f">malkanderen</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">In uw buerte, nu <rhyme label="d" type="m">voortaan</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Dat de een altijt den <rhyme label="c" type="f" corresp="#s10:l5">anderen</rhyme></l>
        <l id="s10:l8" met="4" type="+-">Tragt' in eere voor te <rhyme label="d" type="m" corresp="#s10:l6">gaan</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Soo zult gy, als ik <rhyme label="a" type="f">by-wijlen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Ook uit liefde t'uwent <rhyme label="b" type="m">kom</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Dus met yver tot my <rhyme label="a" type="f" corresp="#s11:l1">ylen</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">En vergaren van <rhyme label="b" type="m" corresp="#s11:l2">rondom</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">'t Is soo zoet van ons <rhyme label="c" type="f">begonnen</rhyme>.</l>
        <l id="s11:l6" met="4" type="+-">Godt verleen' ons sijn <rhyme label="d" type="m">gena</rhyme>,</l>
        <l id="s11:l7" met="4" type="+-">Dat wy 't lang vervolgen <rhyme label="c" type="f" corresp="#s11:l5">konnen</rhyme>,</l>
        <l id="s11:l8" met="4" type="+-">En die lust niet af en <rhyme label="d" type="m" corresp="#s11:l6">sta</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Laat ons op malkanderen <rhyme label="a" type="f">merken</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Dat wy, met te scherper <rhyme label="b" type="m">spoor</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Tot de liefd' en goede <rhyme label="a" type="f" corresp="#s12:l1">werken</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Opgewekt zijn, na als <rhyme label="b" type="m" corresp="#s12:l2">voor</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Laat ons onse <rhyme label="c" type="f">t'samenkomste</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Nimmer licht, om 't een of 't <rhyme label="d" type="m">aar</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">Achterlaten; mits de <rhyme label="c" type="f" corresp="#s12:l5">vroomste</rhyme></l>
        <l id="s12:l8" met="4" type="+-">Daar noch al meer goets <rhyme label="d" type="m" corresp="#s12:l6">vergaar'</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Dat gy met te meer <rhyme label="a" type="f">verlangen</rhyme></l>
        <l id="s13:l2" met="4" type="+-">T'samen tot ons komen <rhyme label="b" type="m">meugt</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Sullen wy met Psalm <rhyme label="a" type="f" corresp="#s13:l1">gezangen</rhyme></l>
        <l id="s13:l4" met="4" type="+-">En veel liedren zijn <rhyme label="b" type="m" corresp="#s13:l2">verheugt</rhyme>.</l>
        <l id="s13:l5" met="4" type="+-">'s Heeren lof, dus <rhyme label="c" type="f">uitgeklonken</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Sal ons zoet en lieflijk <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s13:l7" met="4" type="+-">Meer dan daar men is <rhyme label="c" type="f" corresp="#s13:l5">beschonken</rhyme></l>
        <l id="s13:l8" met="4" type="+-">Met den allerzoetsten <rhyme label="d" type="m" corresp="#s13:l6">wijn</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Als Godt sag, dat wy soo <rhyme label="a" type="f">traaglik</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Wierden aangeset ter <rhyme label="b" type="m">deugt</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Gaf hy ons, soo gansch <rhyme label="a" type="f" corresp="#s14:l1">behaaglik</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">'t Eel gesank tot meerder <rhyme label="b" type="m" corresp="#s14:l2">vreugt</rhyme>.</l>
        <l id="s14:l5" met="4" type="+-">Maer hoe wordt met alle <rhyme label="c" type="f">soetheit</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Als veel stemmen zijn <rhyme label="d" type="m">gepaart</rhyme>,</l>
        <l id="s14:l7" met="4" type="+-">Uitgebreidt Godts groote <rhyme label="c" type="f" corresp="#s14:l5">goetheit</rhyme>,</l>
        <l id="s14:l8" met="4" type="+-">En sijn wet met lust <rhyme label="d" type="m" corresp="#s14:l6">bewaert</rhyme> !</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Hy, die onder d'Engle <rhyme label="a" type="f">rangen</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Eeuwig woont, woont ook te <rhyme label="b" type="m">saam</rhyme></l>
        <l id="s15:l3" met="4" type="+-">Onder Isr'els <rhyme label="a" type="f" corresp="#s15:l1">lofgesangen</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Daar geheiligt wordt sijn <rhyme label="b" type="m" corresp="#s15:l2">naam</rhyme>.</l>
        <l id="s15:l5" met="4" type="+-">Hierom zal hem ook de <rhyme label="c" type="f">woning</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Zijn beridt door onze <rhyme label="d" type="m">stem</rhyme>,</l>
        <l id="s15:l7" met="4" type="+-">Tot een teeken en <rhyme label="c" type="f" corresp="#s15:l5">vertooning</rhyme></l>
        <l id="s15:l8" met="4" type="+-">Onser liefd' en lust na <rhyme label="d" type="m" corresp="#s15:l6">hem</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Laat u ook mijn <rhyme label="a" type="f">Sang-gedichten</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">In mijn Boekjes t'saam <rhyme label="b" type="m">gestelt</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Daar toe wijsslik <rhyme label="a" type="f" corresp="#s16:l1">onder-richten</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Als gy dus malkaar <rhyme label="b" type="m" corresp="#s16:l2">verselt</rhyme>.</l>
        <l id="s16:l5" met="4" type="+-">'k Hebb' s'uit liefd' van u <rhyme label="c" type="f">gegeven</rhyme>.</l>
        <l id="s16:l6" met="4" type="+-">Haaloo mijn genegen <rhyme label="d" type="m">buert</rhyme>,</l>
        <l id="s16:l7" met="4" type="+-">Alles is voor u <rhyme label="c" type="f" corresp="#s16:l5">geschreven</rhyme></l>
        <l id="s16:l8" met="4" type="+-">Soo veel jaren als het <rhyme label="d" type="m" corresp="#s16:l6">duert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
