  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O wael moech di u <rhyme label="a" type="f">verhoghen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die om God na u <rhyme label="a" type="f" corresp="#s1:l1">vermoghen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Den armen troest in haer <rhyme label="b" type="m">verdriet</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Tsi mit woerden of mit <rhyme label="c" type="f">wercken</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Voer u, doer of voer die <rhyme label="c" type="f" corresp="#s1:l4">kercken</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">So waer dat gise hoert of <rhyme label="b" type="m" corresp="#s1:l3">siet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Waerdelic end <rhyme label="a" type="f">mynnentlicken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Sel u God van <rhyme label="a" type="f" corresp="#s2:l1">hemmelrijcken</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Daer voer noch in sijn rijc <rhyme label="b" type="m">ontfaen</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Daer sel dijt pallaes <rhyme label="c" type="f">aenscouwen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">U ghetymmert al claer <rhyme label="c" type="f" corresp="#s2:l4">gouwen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Vant goet dat gi hem hebt <rhyme label="b" type="m" corresp="#s2:l3">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hoe gi hem gheeft <rhyme label="a" type="f">blidelicker</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Hoet pallaes wort <rhyme label="a" type="f" corresp="#s3:l1">suverlicker</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Mit alle zueticheyt <rhyme label="b" type="m">verciert</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Des menschen hert mach nijt <rhyme label="c" type="f">gronderen</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Hoe gi daer selt <rhyme label="c" type="f" corresp="#s3:l4">jubileren</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Om dat gi hem nu wel <rhyme label="b" type="m" corresp="#s3:l3">hantiert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Lof end eer sulzi u <rhyme label="a" type="f">gheven</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Boven in dat ewich <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daer voer die borghers dancken <rhyme label="b" type="m">seer</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Wonderlic sulzi u <rhyme label="c" type="f">prisen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Hulp end troest mit myn <rhyme label="c" type="f" corresp="#s4:l4">bewisen</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Voer Jhesum onsen lieven <rhyme label="b" type="m" corresp="#s4:l3">heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">So dat gi van hem selt <rhyme label="a" type="f">horen</rhyme>:</l>
        <l id="s5:l2" met="4" type="+-">'Coemt mijn vrienden <rhyme label="a" type="f" corresp="#s5:l1">uutvercoren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Besit mijns vaders ewich <rhyme label="b" type="m">rijc</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ju bereyt mit lieft, mit <rhyme label="c" type="f">minne</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Vander werelts <rhyme label="c" type="f" corresp="#s5:l4">aenbeghinne</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Want gijt verdient hebt <rhyme label="b" type="m" corresp="#s5:l3">trouwelic</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Honger, dorst heb ic <rhyme label="a" type="f">gheleden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Veel verdriets, veel <rhyme label="a" type="f" corresp="#s6:l1">yammerheden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Gi troeste my in mijn <rhyme label="b" type="m">ghebrec</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Als ik ju mijn noot liet <rhyme label="c" type="f">weten</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Drijncken gaef di my end <rhyme label="c" type="f" corresp="#s6:l4">eten</rhyme>.</l>
        <l id="s6:l6" met="4" type="-+">Daer in en sciede gheen <rhyme label="b" type="m" corresp="#s6:l3">vertrec</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Oec in al mijn ander <rhyme label="a" type="f">doghen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Quam my troest na u <rhyme label="a" type="f" corresp="#s7:l1">vermoghen</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Dus coemt, besit mijns vaders <rhyme label="b" type="m">rijc</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">U bereyt mit lieft mit <rhyme label="c" type="f">minne</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Van der werelts <rhyme label="c" type="f" corresp="#s7:l4">aenbeghinne</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Want gijt verdient hebt <rhyme label="b" type="m" corresp="#s7:l3">trouwelic</rhyme>.'</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Hoe wel sel u dat <rhyme label="a" type="f">behagen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Blidelic sel gi hem <rhyme label="a" type="f" corresp="#s8:l1">vraghen</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">'O Heer, wanneer is dit <rhyme label="b" type="m">ghesciet</rhyme>?</l>
        <l id="s8:l4" met="4" type="+-">Dat wi u dus in liden <rhyme label="c" type="f">saghen</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Honger, dorst, mit ander <rhyme label="c" type="f" corresp="#s8:l4">plaghen</rhyme></l>
        <l id="s8:l6" met="4" type="-+">End troesten u in ju <rhyme label="b" type="m" corresp="#s8:l3">verdriet</rhyme>.'</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">So sel di dees antwert <rhyme label="a" type="f">horen</rhyme>:</l>
        <l id="s9:l2" met="4" type="+-">'Lieve vreende <rhyme label="a" type="f" corresp="#s9:l1">uutvercoren</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Voerwaer, voerwaer, ic segghe <rhyme label="b" type="m">ju</rhyme>:</l>
        <l id="s9:l4" met="4" type="+-">Also lang gijs een die <rhyme label="c" type="f">mynste</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Mijnre hebt ghedaen of <rhyme label="c" type="f" corresp="#s9:l4">gunste</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">So lang ghesciedet my van <rhyme label="b" type="m" corresp="#s9:l3">u</rhyme>.'</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">O wat vruechd sel u dan <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Als u God so heeft <rhyme label="a" type="f" corresp="#s10:l1">gepresen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Voer al dat is of heeft <rhyme label="b" type="m">gheweest</rhyme>.</l>
        <l id="s10:l4" met="4" type="+-">Sijn prijs is <rhyme label="c" type="f">waerachteliken</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Want sy blijft doch <rhyme label="c" type="f" corresp="#s10:l4">ewelicken</rhyme>.</l>
        <l id="s10:l6" met="4" type="-+">Mer werelts prijs is ydel <rhyme label="b" type="m" corresp="#s10:l3">feest</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">O nu wilt doch <rhyme label="a" type="f">blideliken</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Hier beneden op <rhyme label="a" type="f" corresp="#s11:l1">eertrijcken</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Den armen gheven troest end <rhyme label="b" type="m">raet</rhyme>.</l>
        <l id="s11:l4" met="4" type="+-">Wye heeft noot end bid om <rhyme label="c" type="f">Gode</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Laet u duncken tsi Gods <rhyme label="c" type="f" corresp="#s11:l4">bode</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Al waer hi wonderlicke <rhyme label="b" type="m" corresp="#s11:l3">quaet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Als gi een selt aelmis <rhyme label="a" type="f">gheven</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Is hi goet of quaet van <rhyme label="a" type="f" corresp="#s12:l1">leven</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Al daer en leyt u nijt smijts <rhyme label="b" type="m">aen</rhyme>.</l>
        <l id="s12:l4" met="4" type="+-">Als gi so staet in die <rhyme label="c" type="f">synne</rhyme></l>
        <l id="s12:l5" met="4" type="+-">Dat gijt puer gheeft om Goots <rhyme label="c" type="f" corresp="#s12:l4">mynne</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Gi selt daer af groot loen <rhyme label="b" type="m" corresp="#s12:l3">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Wye gi troest in sijn <rhyme label="a" type="f">behoeven</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Om Goots mijn, wilt des <rhyme label="a" type="f" corresp="#s13:l1">gheloven</rhyme>;</l>
        <l id="s13:l3" met="4" type="-+">Hi wort u tymmerman te <rhyme label="b" type="m">hant</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">In dat scoen palaes <rhyme label="c" type="f">voerscreven</rhyme></l>
        <l id="s13:l5" met="4" type="+-">Daer gi in sult sijn <rhyme label="c" type="f" corresp="#s13:l4">verheven</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Corts boven in dat suete <rhyme label="b" type="m" corresp="#s13:l3">lant</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Nu God gheeft ons hier die <rhyme label="a" type="f">armen</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Om dijn wille so <rhyme label="a" type="f" corresp="#s14:l1">tontfermen</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Dat wi noch weerdich moeten <rhyme label="b" type="m">sijn</rhyme>.</l>
        <l id="s14:l4" met="4" type="+-">Alle blijsscap mit <rhyme label="c" type="f">venite</rhyme></l>
        <l id="s14:l5" met="4" type="+-">End verlost van dat woert <rhyme label="c" type="f" corresp="#s14:l4">ite</rhyme></l>
        <l id="s14:l6" met="4" type="-+">Mi al sijn vreselicke <rhyme label="b" type="m" corresp="#s14:l3">pijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
