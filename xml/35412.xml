  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">BEvalligh <rhyme label="a" type="m">Jonghelingh</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die soo uyt alle <rhyme label="a" type="m" corresp="#s1:l1">dingh</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Suyght Liefde soet als <rhyme label="b" type="f">Honingh</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ghy zyt een gheestigh <rhyme label="c" type="m">Man</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Een Man die spreken <rhyme label="c" type="m" corresp="#s1:l4">kan</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Al-waer 't voor eenen <rhyme label="b" type="f" corresp="#s1:l3">Koningh</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Door uwen soeten <rhyme label="d" type="m">praet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Soo soet als <rhyme label="d" type="m" corresp="#s1:l7">honingh-raet</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Hebt ghy in eer' en <rhyme label="e" type="m">deught</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Myn jonge jeugt <rhyme label="e" type="m" corresp="#s1:l9">verheugt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Door liefde die ghy <rhyme label="a" type="m">draeght</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Tot my een jonghe <rhyme label="a" type="m" corresp="#s2:l1">Maeght</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Zyt ghy eenen <rhyme label="b" type="f">Verwinnaer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ick sal zyn uw <rhyme label="c" type="m">Vrindin</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Uw Bruyt, en <rhyme label="c" type="m" corresp="#s2:l4">Herderin</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wilt ghy zyn mynen <rhyme label="b" type="f" corresp="#s2:l3">Minnaer</rhyme>?</l>
        <l id="s2:l7" met="3" type="-+">Ick neem U-lieden <rhyme label="d" type="m">dan</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Voor mynen lieven <rhyme label="d" type="m" corresp="#s2:l7">Man</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Nemt ghy my voor u <rhyme label="e" type="m">Vrouw</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Daer is myn' Handt op <rhyme label="e" type="m" corresp="#s2:l9">Trouw</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick hebb' om u <rhyme label="a" type="m">altydt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Veel Vryers <rhyme label="a" type="m" corresp="#s3:l1">af-gheseydt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Die my hun Trouw <rhyme label="b" type="f">op-droegen</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Het schynt dat Godt den <rhyme label="c" type="m">Heer'</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Aen my woud' gheven <rhyme label="c" type="m" corresp="#s3:l4">d'eer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van my met u te <rhyme label="b" type="f" corresp="#s3:l3">voeghen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">O! Perel van het <rhyme label="d" type="m">Landt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Uw' hant voegt in myn' <rhyme label="d" type="m" corresp="#s3:l7">handt</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Als eenen <rhyme label="e" type="m">Diamant</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Die staet in 't Gout <rhyme label="e" type="m" corresp="#s3:l9">geplant</rhyme>.</l>
      </lg>
    </lg>
  </text>
