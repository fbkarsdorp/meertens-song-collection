  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Doen Saul d’Eselinnen <rhyme label="a" type="m">socht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Op ‘t Coninckrijck hy niet en <rhyme label="a" type="m" corresp="#s1:l1">docht</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Maer quam als by <rhyme label="b" type="f">gevalle</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Tot Samuel, want Gods <rhyme label="c" type="m">secreet</rhyme></l>
        <l id="s1:l5" met="4" type="-+">En wist hy niet, maer den <rhyme label="c" type="m" corresp="#s1:l4">Propheet</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Wist dese dingen <rhyme label="b" type="f" corresp="#s1:l3">alle</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">So wonderlick de Heere <rhyme label="d" type="m">werckt</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Dat het den mensche niet en <rhyme label="d" type="m" corresp="#s1:l7">merckt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Hy heeft een soet <rhyme label="e" type="f">bestieren</rhyme>.</l>
        <l id="s1:l10" met="4" type="-+">Seer kleyne dingen geeft hy <rhyme label="f" type="m">in</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Maer heeft wat anders in den <rhyme label="f" type="m" corresp="#s1:l10">sin</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">O wonderlick <rhyme label="e" type="f" corresp="#s1:l9">regieren</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">‘t Scheen had den knape niet <rhyme label="a" type="m">gedaen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hy en waer niet henen <rhyme label="a" type="m" corresp="#s2:l1">gegaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Om amuel te <rhyme label="b" type="f">spreken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Maer Godt die haddet so <rhyme label="c" type="m">beleyt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Door zijn verborghen <rhyme label="c" type="m" corresp="#s2:l4">werck’lickheyt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die altijt is <rhyme label="b" type="f" corresp="#s2:l3">ghebleken</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">In ‘t boeck der spreucken staet een <rhyme label="d" type="m">woort</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Dar yeg’licks ganck van Godt comt <rhyme label="d" type="m" corresp="#s2:l7">voort</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">Dit wert hier waer <rhyme label="e" type="f">bevonden</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Saul om d’Eselinnen <rhyme label="f" type="m">ginck</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Maer hy wert om een ander <rhyme label="f" type="m" corresp="#s2:l10">dinck</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Van Godt daer toe <rhyme label="e" type="f" corresp="#s2:l9">ghesonden</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">‘s Ghelijcks den Heere oock <rhyme label="a" type="m">geboot</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Een Weduw’ in den hongers <rhyme label="a" type="m" corresp="#s3:l1">noot</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Om Elia te <rhyme label="b" type="f">spijsen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Maer laes de weduw’ wistet <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Voor datter Elias haer <rhyme label="c" type="m" corresp="#s3:l4">hiet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dit can ons <rhyme label="b" type="f" corresp="#s3:l3">onderwijsen</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Dat ons ghedachten verre <rhyme label="d" type="m">sijn</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Van Godt gelijck den hemel <rhyme label="d" type="m" corresp="#s3:l7">fijn</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Van d’aerde is <rhyme label="e" type="f">verscheyden</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Veel grooter dingen wil hy <rhyme label="f" type="m">doen</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Al ons verstant wel can <rhyme label="f" type="m" corresp="#s3:l10">bevroen</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Om sijn Liefd’ uyt te <rhyme label="e" type="f" corresp="#s3:l9">breyden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Mochten wy weten hoe na <rhyme label="a" type="m">by</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Dat ons den Heere dickwils <rhyme label="a" type="m" corresp="#s4:l1">sy</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wy souden hem <rhyme label="b" type="f">aenbeden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Hy soud’ ons geven water <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Wt sijne reyne levens <rhyme label="c" type="m" corresp="#s4:l4">vloet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">In onse ziel <rhyme label="b" type="f" corresp="#s4:l3">beneden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">‘t Gheloove siet Godts <rhyme label="d" type="m">heerlijckheyt</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Den Heere niet van ons en <rhyme label="d" type="m" corresp="#s4:l7">scheyt</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Maer onse krancke <rhyme label="e" type="f">sinnen</rhyme></l>
        <l id="s4:l10" met="4" type="-+">Die altijt sweven hier en <rhyme label="f" type="m">daer</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Worden sijn aensicht niet <rhyme label="f" type="m" corresp="#s4:l10">gewaer</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Die maeckt onrust van <rhyme label="e" type="f" corresp="#s4:l9">binnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
