    <melody>Geef mij te drinken naar mijn dorst</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEs Heeren vrede seer <rhyme label="a" type="m">delicaet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die wensche ick u uyt goeder <rhyme label="b" type="f">minne</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die alle verstant te boven <rhyme label="a" type="m" corresp="#s1:l1">gaet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat oock de selve om u <rhyme label="b" type="f" corresp="#s1:l2">gewinne</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">In u herte hout d'overhant <rhyme label="b" type="f" corresp="#s1:l2">binnen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat haer woonste daer mach <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Dat sy beware u herte en <rhyme label="b" type="f" corresp="#s1:l2">sinnen</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Dat is de rechte Jonste <rhyme label="c" type="m" corresp="#s1:l6">mijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al ist dat wy op dit <rhyme label="a" type="m">saysoen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">By malcanderen niet en <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Laet liefde daeromme niet <rhyme label="a" type="m" corresp="#s2:l1">vercoen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Mijn lieve vrienden <rhyme label="b" type="f" corresp="#s2:l2">uytghelesen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Want sy is vierich t'uwaerts <rhyme label="b" type="f" corresp="#s2:l2">geresen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Laet ons met desen bant <rhyme label="c" type="m">devijn</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Mijn lieve vrienden <rhyme label="b" type="f" corresp="#s2:l2">ghepresen</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Ghebonden gaen waer dat wy <rhyme label="c" type="m" corresp="#s2:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Al[...]s doch recht inder liefden <rhyme label="a" type="m">blijft</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En wandelt daer in hier <rhyme label="b" type="f">beneden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En blijft vast in Christum <rhyme label="a" type="m" corresp="#s3:l1">gelijft</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Wilt buyten zijn verbont niet <rhyme label="b" type="f" corresp="#s3:l2">treden</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Maer wilt u hauden int huys vol <rhyme label="b" type="f" corresp="#s3:l2">vreden</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">In gehoorsaemheden totten <rhyme label="c" type="m">ende</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Want daer zijn rechten en <rhyme label="b" type="f" corresp="#s3:l2">seden</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Die Christus Leden hebben <rhyme label="c" type="m" corresp="#s3:l6">jent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Gemaect hebben wy een <rhyme label="a" type="m">verbont</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En ons onder die rechten <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Waert dat wy nu t eenigher <rhyme label="a" type="m" corresp="#s4:l1">stont</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Daer tegen deden hier <rhyme label="b" type="f" corresp="#s4:l2">beneven</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Wy souden dan moeten zijn <rhyme label="b" type="f" corresp="#s4:l2">gedreven</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Om onser sonden metter <rhyme label="c" type="m">spoet</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Al uyt des Heeren huys <rhyme label="b" type="f" corresp="#s4:l2">verheven</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">En eeuwich sneuen, doetmen gheen <rhyme label="c" type="m" corresp="#s4:l6">boet</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Merct eens Saul was gehoorsaem <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Maer hy ginck s Heeren ghebot <rhyme label="b" type="f">verbreken</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hy en dede oock niet dat hem Godt <rhyme label="a" type="m" corresp="#s5:l1">hiet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Maer eylasy hy heeft Godt <rhyme label="b" type="f" corresp="#s5:l2">besweken</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Daeromme is Gods geest van hem <rhyme label="b" type="f" corresp="#s5:l2">geweken</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Eenen bosen quam in hem <rhyme label="c" type="m">ras</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">En Saul bleef van Godt <rhyme label="b" type="f" corresp="#s5:l2">versteken</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Soo t is gebleken al op dat <rhyme label="c" type="m" corresp="#s5:l6">pas</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die op Gods gheboden lutter <rhyme label="a" type="m">schaft</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En volgen hier haer eyghen <rhyme label="b" type="f">ghedachten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die sullen wesen van Godt <rhyme label="a" type="m" corresp="#s6:l1">ghestraft</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Als sy t hier minst sullen <rhyme label="b" type="f" corresp="#s6:l2">verwachten</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Hierom mijn vriendekens met <rhyme label="b" type="f" corresp="#s6:l2">crachten</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Haut totten ende toe aen seer <rhyme label="c" type="m">stijf</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Op dat wy Saul niet en <rhyme label="b" type="f" corresp="#s6:l2">slachten</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Maer wilt u wachten van sulck <rhyme label="c" type="m" corresp="#s6:l6">bedrijf</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer en laet ons sulck bedrijf niet <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Maer veel liever in het goede <rhyme label="b" type="f">aerbeyden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Ende alsoo seer stijf <rhyme label="a" type="m" corresp="#s7:l1">aenhoen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Tot dat wy sullen al van hier <rhyme label="b" type="f" corresp="#s7:l2">scheyden</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Siet wel toe en laet u niet <rhyme label="b" type="f" corresp="#s7:l2">verleyden</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Maer blijft op Godts woort vaste <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Want den Satan gaet netten <rhyme label="b" type="f" corresp="#s7:l2">breyden</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">En die uytspreyden om ons te <rhyme label="c" type="m" corresp="#s7:l6">vaen</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Daeromme wilt wel zijn stricken <rhyme label="a" type="m">mijen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Dat ghy van hem niet en wort <rhyme label="b" type="f">ghevanghen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Al compt hy ons dach en nacht <rhyme label="a" type="m" corresp="#s8:l1">bestrijen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Wilt Christum soo veel te meer aen <rhyme label="b" type="f" corresp="#s8:l2">hanghen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Want ons te vanghen, is zijn <rhyme label="b" type="f" corresp="#s8:l2">verlangen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Al met verstranghen in zijn <rhyme label="c" type="m">Net</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Dus neempt wel acht op uwe <rhyme label="b" type="f" corresp="#s8:l2">gangen</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">En wat ghy doet daer wel <rhyme label="c" type="m" corresp="#s8:l6">oplet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Als de Serpenten voorsichtich soo <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dat is selfs Christus eygen <rhyme label="b" type="f">verclaren</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Want men ist soo haest gheworden <rhyme label="a" type="m" corresp="#s9:l1">quijt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Daeromme dat men arbeyt veel <rhyme label="b" type="f" corresp="#s9:l2">Jaren</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Dus wilt al u goet wel <rhyme label="b" type="f" corresp="#s9:l2">bewaren</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Dat ghy hier hebt int aerde <rhyme label="c" type="m">vat</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Op dat u gheen Roovers en <rhyme label="b" type="f" corresp="#s9:l2">wedervaren</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">En sonder sparen nemen uwen <rhyme label="c" type="m" corresp="#s9:l6">schat</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Bewaert toch wel uwen schat voor <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Mijn lieve vriendekens <rhyme label="b" type="f">eenpaerlick</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Denckt dat ghy staet, wacht u voor <rhyme label="a" type="m" corresp="#s10:l1">val</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Want het vallen is seer <rhyme label="b" type="f" corresp="#s10:l2">swaerlick</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">In s'Heeren handen, ick secht u <rhyme label="b" type="f" corresp="#s10:l2">waerlick</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Alsoo de schriftuere <rhyme label="c" type="m">ghewaecht</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Daeromme segghe ick tot u <rhyme label="b" type="f" corresp="#s10:l2">claerlick</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">Dat ghy eerbaerlick sorghe <rhyme label="c" type="m" corresp="#s10:l6">draecht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Draecht sorghe en hebt seer goet <rhyme label="a" type="m">regaert</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dat ghy niet en loopt t'eenigher <rhyme label="b" type="f">uren</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Al buyten Jerusalem <rhyme label="a" type="m" corresp="#s11:l1">vermaert</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Dat ghy daeromme niet en moet <rhyme label="b" type="f" corresp="#s11:l2">treuren</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Siet wel toe latet u niet <rhyme label="b" type="f" corresp="#s11:l2">ghebeuren</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Maer blijft binnen der stadt <rhyme label="c" type="m">minioot</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Want om dat Suney liep buyten <rhyme label="b" type="f" corresp="#s11:l2">muren</rhyme>,</l>
        <l id="s11:l8" met="4" type="-+">Most hyt besuren al metter <rhyme label="c" type="m" corresp="#s11:l6">doot</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Daeromme siet wel neerstich <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En laet u door het quaet niet <rhyme label="b" type="f">verblenden</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En wilt altijts toenemen int <rhyme label="a" type="m" corresp="#s12:l1">goe</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Ende u houden by Christus <rhyme label="b" type="f" corresp="#s12:l2">benden</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Oorlof hier mede wil ick 't <rhyme label="b" type="f" corresp="#s12:l2">enden</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Om u te senden is dit <rhyme label="c" type="m">Liedt</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Willet van my int goede <rhyme label="b" type="f" corresp="#s12:l2">wenden</rhyme>,</l>
        <l id="s12:l8" met="4" type="-+">Groet de bekende als ghy haer <rhyme label="c" type="m" corresp="#s12:l6">siet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
