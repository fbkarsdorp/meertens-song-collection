      <year-start>1746</year-start>
      <year-end>1746</year-end>
    </date>
    <location>
      <orginal-name>amsterdam</orginal-name>
      <standard-name>Amsterdam, The Netherlands</standard-name>
      <coordinates>
        <lon>52.3745403</lon>
        <lat>4.89797550561798</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Ik breng u op een dronkje</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Godin, myn tweede <rhyme label="a" type="f">Leven</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt aan uw Dienaar <rhyme label="a" type="f" corresp="#s1:l1">geven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">(Die u bemind) <rhyme label="b" type="m">gehoor</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Neem op zyn smeken <rhyme label="c" type="f">achten</rhyme>!</l>
        <l id="s1:l5" met="3" type="-+">En wilt hem niet <rhyme label="c" type="f" corresp="#s1:l4">verachten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Maar leen genadig 't <rhyme label="b" type="m" corresp="#s1:l3">oor</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Cupido heeft met een <rhyme label="a" type="f">pyltje</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Veel scherper als een <rhyme label="a" type="f" corresp="#s2:l1">vyltje</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">My op het diepst <rhyme label="b" type="m">gewond</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">De wond die is zo <rhyme label="c" type="f">byster</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Daar helpt geen zalf nog <rhyme label="c" type="f" corresp="#s2:l4">plyster</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Maar een woord uit uw <rhyme label="b" type="m" corresp="#s2:l3">Mond</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Geen Dranken, Zaad, nog <rhyme label="a" type="f">Kruyden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zyn van nut of <rhyme label="a" type="f" corresp="#s3:l1">beduyden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Voor een Verliefde <rhyme label="b" type="m">Ziel</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Maar gy kunt my <rhyme label="c" type="f">genezen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Door uw bekoorlyk <rhyme label="c" type="f" corresp="#s3:l4">wezen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ach dat dit u <rhyme label="b" type="m" corresp="#s3:l3">geviel</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ik kan niet langer <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Zo gy geen troost wilt <rhyme label="a" type="f" corresp="#s4:l1">geven</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Maar moet na Charons <rhyme label="b" type="m">boot</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">En 't naare styf <rhyme label="c" type="f">betreden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Met afgematte <rhyme label="c" type="f" corresp="#s4:l4">leden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Na een Rampzaal'ge <rhyme label="b" type="m" corresp="#s4:l3">dood</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wilt gy u hert niet <rhyme label="a" type="f">breken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Nog agt slaan op myn <rhyme label="a" type="f" corresp="#s5:l1">smeken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Myn zugten en <rhyme label="b" type="m">getraan</rhyme>?</l>
        <l id="s5:l4" met="3" type="-+">Nog door uw groot <rhyme label="c" type="f">vermogen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Eens tonen <rhyme label="c" type="f" corresp="#s5:l4">mededogen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dan is 't met my <rhyme label="b" type="m" corresp="#s5:l3">gedaan</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ik zal u all' myn <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Een nedrig hert <rhyme label="a" type="f" corresp="#s6:l1">toedragen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Zo lang het helder <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">My gunnen zal haar <rhyme label="c" type="f">stralen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En nimmermeer <rhyme label="c" type="f" corresp="#s6:l4">afdwalen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Van myn geringe <rhyme label="b" type="m" corresp="#s6:l3">plicht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ach dat 't u eens <rhyme label="a" type="f">beliefde</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Te tonen met myn <rhyme label="a" type="f" corresp="#s7:l1">liefde</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Een weinigje <rhyme label="b" type="m">genaâ</rhyme>!</l>
        <l id="s7:l4" met="3" type="-+">Ja mogt ik eens <rhyme label="c" type="f">erlangen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En uit uw Mond <rhyme label="c" type="f" corresp="#s7:l4">ontfangen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Het gunstig woord van <rhyme label="b" type="m" corresp="#s7:l3">Jaâ</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ey ziet dat lieve <rhyme label="a" type="f">Hondje</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Lacht met haar aardig <rhyme label="a" type="f" corresp="#s8:l1">Mondje</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat maakt my weder <rhyme label="b" type="m">vreugt</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Kom wilt my 't Ja-woord <rhyme label="c" type="f">geven</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Myn Troost, myn Lief, myn <rhyme label="c" type="f" corresp="#s8:l4">Leven</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Het krenkt niet uwe <rhyme label="b" type="m" corresp="#s8:l3">deugt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
