  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wanneer sal 't Here Iesu, <rhyme label="a" type="m">sijn</rhyme>?</l>
        <l id="s1:l2" met="4" type="-+">Als uwe wille onder <rhyme label="a" type="m" corresp="#s1:l1">mijnn'</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Eens gansch sal sijn <rhyme label="b" type="f">gebogen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Uw lijden, en uw <rhyme label="c" type="m">lijdsaamheydt</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Haar maat sal hebben na 't <rhyme label="c" type="m" corresp="#s1:l4">beleydt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Van 't Vaderlijck <rhyme label="b" type="f" corresp="#s1:l3">medogen</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als 't Gracy-werck van my <rhyme label="a" type="m">gesterckt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Soo veel en groot in u <rhyme label="a" type="m" corresp="#s2:l1">gewerckt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sal hebben met <rhyme label="b" type="f">volherden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat d'on-verwelckelijcke <rhyme label="c" type="m">croon</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Op uw hooft tot <rhyme label="c" type="m" corresp="#s2:l4">genaden-loon</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gestelt sal cunnen <rhyme label="b" type="f" corresp="#s2:l3">werden</rhyme>.</l>
      </lg>
    </lg>
  </text>
