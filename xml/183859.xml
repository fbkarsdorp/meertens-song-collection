  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Gij gaat dan van ons <rhyme label="a" type="f">scheiden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Uw leidstar dringt u <rhyme label="b" type="m">voort</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Wij zien u voor het <rhyme label="c" type="f">laatste</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In dit geheiligd <rhyme label="b" type="m" corresp="#s1:l2">oord</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Zoo slaakt des noodlots <rhyme label="d" type="m">hand</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Te vaak den <rhyme label="d" type="m" corresp="#s1:l5">Broederband</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Reis dan voorspoedig <rhyme label="a" type="f">heenen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Waar u 't geluk <rhyme label="b" type="m">verbeidt</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Maar wil ons nooit <rhyme label="c" type="f">vergeten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waar ook het lot u <rhyme label="b" type="m" corresp="#s2:l2">leid'</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Denk aan den <rhyme label="d" type="m">broederplicht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Bij al wat gij <rhyme label="d" type="m" corresp="#s2:l5">verricht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Breng onze verre <rhyme label="a" type="f">Broeders</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Den driemaal heilgen <rhyme label="b" type="m">groet</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Wees bij <rhyme label="c" type="f">Vrij-Metselaaren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Het geen gij wezen <rhyme label="b" type="m" corresp="#s3:l2">moet</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Vaarwel! denk in elk <rhyme label="d" type="m">land</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Aan onzen <rhyme label="d" type="m" corresp="#s3:l5">broederband</rhyme>.</l>
      </lg>
    </lg>
  </text>
