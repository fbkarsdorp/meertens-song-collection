      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Broeders, vrienden <rhyme label="a" type="f">ghenerale</rhyme></l>
        <l id="s1:l2" met="4" type="+-">En laet doch u sinnen <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Wijcken van het <rhyme label="a" type="f" corresp="#s1:l1">princepale</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Om yet, dat ghy hoort oft <rhyme label="b" type="m" corresp="#s1:l2">siet</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Maer wilt blijven, om <rhyme label="c" type="f">beklijven</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">By den Heer, ende sijn <rhyme label="d" type="m">woort</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Tot den ende, met de <rhyme label="e" type="f">bende</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Die den Heere, <rhyme label="d" type="m" corresp="#s1:l6">toebehoort</rhyme>:</l>
        <l id="s1:l9" met="4" type="+-">Dat u wandelinghe <rhyme label="f" type="m">vry</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">’t Euangeli weerdigh <rhyme label="f" type="m" corresp="#s1:l9">zy</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wilt in ‘t hert altijt <rhyme label="a" type="f">logieren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">’t Onverganckelijcke <rhyme label="b" type="m">zaet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Soo sult ghy van zonden <rhyme label="a" type="f" corresp="#s2:l1">vieren</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Draghen haet, tot alle <rhyme label="b" type="m" corresp="#s2:l2">quaet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Laet u sinnen, oock van <rhyme label="c" type="f">binnen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Blijven in ‘t voor nemen <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Godt sal stercken, mede <rhyme label="e" type="f">wercken</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">En vertroosten u <rhyme label="d" type="m" corresp="#s2:l6">ghemoet</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Dat ghy vreuchtbaer wesen <rhyme label="f" type="m">sult</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Van gherechticheyt <rhyme label="f" type="m" corresp="#s2:l9">vervult</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maer en wilt u niet <rhyme label="a" type="f">fundeeren</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Op het vleesch, want ‘t is maer <rhyme label="b" type="m">hoy</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sijn gloey, sijn <rhyme label="a" type="f" corresp="#s3:l1">domineeren</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Haest vergaet, als ‘t Bloemkens <rhyme label="b" type="m" corresp="#s3:l2">moy</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En de Werelt, schoon <rhyme label="c" type="f">bepeerelt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Wie haer volght en beter <rhyme label="d" type="m">weet</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">‘t Sal ten laesten, hen ten <rhyme label="e" type="f">quaetsten</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Vergaen, ende weesen <rhyme label="d" type="m" corresp="#s3:l6">leet</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">Als den loon der zonden <rhyme label="f" type="m">koomt</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">En de Werelt wort <rhyme label="f" type="m" corresp="#s3:l9">verdoemt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Voor de Rechter-stoel des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s4:l2" met="4" type="+-">En sal geen excuse <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Want sijn woort heeft hy doen <rhyme label="a" type="f" corresp="#s4:l1">leeren</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Over al de Werelt <rhyme label="b" type="m" corresp="#s4:l2">fijn</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Sijn Dienaren // doen <rhyme label="c" type="f">verklaren</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Boete, tot <rhyme label="d" type="m">verghevenis</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Want Oordeelen, den <rhyme label="e" type="f">gheheelen</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Aert-bodem sal hy <rhyme label="d" type="m" corresp="#s4:l6">ghewis</rhyme>:</l>
        <l id="s4:l9" met="4" type="+-">Daerom heeft hy hier in ‘t <rhyme label="f" type="m">pleyn</rhyme></l>
        <l id="s4:l10" met="4" type="+-">Doen waerschouwen groot en <rhyme label="f" type="m" corresp="#s4:l9">kleyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Want hy sal een <rhyme label="a" type="f">yeghelijcken</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Nae sijn wercken gheven <rhyme label="b" type="m">loon</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">‘t Zy den Armen oft den <rhyme label="a" type="f" corresp="#s5:l1">Rijcken</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Niet aensien eenich <rhyme label="b" type="m" corresp="#s5:l2">persoon</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Hy sal gheven, ‘t eeuwigh <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Al die goet hebben <rhyme label="d" type="m">ghedaen</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Doen de boose // <rhyme label="e" type="f">Goddelose</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">In d’eeuwighe pijne <rhyme label="d" type="m" corresp="#s5:l6">gaen</rhyme>,</l>
        <l id="s5:l9" met="4" type="+-">Daer haer worm niet en <rhyme label="f" type="m">sterft</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">Noch haer vyer niet en <rhyme label="f" type="m" corresp="#s5:l9">bederft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Een groot onderscheyt, o <rhyme label="a" type="f">vrienden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Sal dan zijn te mercken <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Tusschen die den Heere <rhyme label="a" type="f" corresp="#s6:l1">dienden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En die hem waren <rhyme label="b" type="m" corresp="#s6:l2">rebel</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Dus slaet gade // Godts <rhyme label="c" type="f">ghenade</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Versuymt niet de <rhyme label="d" type="m">zaligheyt</rhyme>:</l>
        <l id="s6:l7" met="4" type="+-">Die Godt jone // Door den <rhyme label="e" type="f">Sone</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Ons uyt <rhyme label="d" type="m" corresp="#s6:l6">liberaligheyt</rhyme>:</l>
        <l id="s6:l9" met="4" type="+-">Want om in ‘t leven te <rhyme label="f" type="m">gaen</rhyme>,</l>
        <l id="s6:l10" met="4" type="+-">Is ‘t Christus, de deur <rhyme label="f" type="m" corresp="#s6:l9">ontdaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
