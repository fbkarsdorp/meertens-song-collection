      <year-start>1818</year-start>
      <year-end>1818</year-end>
    </date>
    <tags>
      <tag standard-name="avondlied" translation="evening song">avondlied</tag>
      <tag standard-name="danklied" translation="gratitude song">danklied</tag>
    </tags>
