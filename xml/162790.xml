  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE snelle stroom van de <rhyme label="a" type="m">Jordaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Is van malkander <rhyme label="a" type="m" corresp="#s1:l1">afgegaen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Doe Godes Priesters <rhyme label="b" type="f">traden</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Tot in de vloet // met haren <rhyme label="c" type="m">voet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Godts Arck op haer <rhyme label="b" type="f" corresp="#s1:l3">gheladen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Doe kon het gansche Leger <rhyme label="a" type="m">treÃªn</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Al langhs de gront der diepten <rhyme label="a" type="m" corresp="#s2:l1">heen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Daer andersins het <rhyme label="b" type="f">stroomen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Haer met ghewelt // had neer <rhyme label="c" type="m">ghevelt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En gantslijck wegh <rhyme label="b" type="f" corresp="#s2:l3">ghenomen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wanneer men in de Lande <rhyme label="a" type="m">vint</rhyme></l>
        <l id="s3:l2" met="4" type="-+">De Vromen, die den Heer <rhyme label="a" type="m" corresp="#s3:l1">bemint</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo vloeyt Godts strenghe <rhyme label="b" type="f">tooren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Bereyt tot slaen // daer niet op <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ghelijck als van te <rhyme label="b" type="f" corresp="#s3:l3">vooren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dan magh het volck na sijn <rhyme label="a" type="m">begeer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hem spreyden by sijn Wijn-stock <rhyme label="a" type="m" corresp="#s4:l1">neer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Of wand'len gaen met <rhyme label="b" type="f">lusten</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">O! 't stelt een Landt // in vasten <rhyme label="c" type="m">stant</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Als daer Godts kind'ren <rhyme label="b" type="f" corresp="#s4:l3">rusten</rhyme>.</l>
      </lg>
    </lg>
  </text>
