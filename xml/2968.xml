    <melody>Amarylletje mijn vriendin</melody>
  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IS 't hoop van aerdtsch gemack of <rhyme label="a" type="m">heyl</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat u de kans doet <rhyme label="b" type="f">wagen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Te dwaeslijck draeghtmen 't leven <rhyme label="a" type="m" corresp="#s1:l1">veyl</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Om 't Nietigh te <rhyme label="b" type="f" corresp="#s1:l2">bejagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Is 't Staet of eer-lust die u <rhyme label="a" type="m">drijft</rhyme>:</l>
        <l id="s2:l2" met="3" type="-+">Te zotter is het <rhyme label="b" type="f">poogen</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Die willigh in de laeghte <rhyme label="a" type="m" corresp="#s2:l1">blijft</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Koomt mack'lijckst tot <rhyme label="b" type="f" corresp="#s2:l2">verhoogen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laet zotte waen en redens <rhyme label="a" type="m">schijn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">U 't hert niet <rhyme label="b" type="f">onderdelven</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Wilt ghy de meeste Meester <rhyme label="a" type="m" corresp="#s3:l1">zijn</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Wordt Meester van u <rhyme label="b" type="f" corresp="#s3:l2">zelven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Mishaeght u de <rhyme label="a" type="m">vernederheydt</rhyme>?</l>
        <l id="s4:l2" met="3" type="-+">Neen. laetz' u wel <rhyme label="b" type="f">gevallen</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Die, op het alderlaeghste <rhyme label="a" type="m" corresp="#s4:l1">leyt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Heeft niet om af te <rhyme label="b" type="f" corresp="#s4:l2">vallen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het aerdtsch' en is maer af <rhyme label="a" type="m">end'an</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">Weest vaster heyls <rhyme label="b" type="f">bezorger</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Laet heerschen al wie wil en <rhyme label="a" type="m" corresp="#s5:l1">kan</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Word ghy een Hemels <rhyme label="b" type="f" corresp="#s5:l2">borger</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daer geldt geen geldt, geen gift geen <rhyme label="a" type="m">gaef</rhyme>;</l>
        <l id="s6:l2" met="3" type="-+">Geen vleyen, stuypen, <rhyme label="b" type="f">nijgen</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Geen gunst-gehuer, geen <rhyme label="a" type="m" corresp="#s6:l1">hof-gedraef</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Geen on-e'el-hertigh <rhyme label="b" type="f" corresp="#s6:l2">zwijgen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Daer is geen <rhyme label="a" type="m">onder-sluypery</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Geen woeligh Staets <rhyme label="b" type="f">bepijnen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Geen ver-door-steken <rhyme label="a" type="m" corresp="#s7:l1">kuypery</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Geen listigh <rhyme label="b" type="f" corresp="#s7:l2">tegen-mijnen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Daer hoeft geen smertigh <rhyme label="a" type="m">hert-gepeyns</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">Geen omgekoop van <rhyme label="b" type="f">mannen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Geen nare wreeck-krop, geen <rhyme label="a" type="m" corresp="#s8:l1">geveyns</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Geen angstigh t' <rhyme label="b" type="f" corresp="#s8:l2">samen-spannen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Om Liefde, om Geloof, om <rhyme label="a" type="m">Hoop</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Om ongevalsche <rhyme label="b" type="f">Deuchden</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Is 't alles en alleen te <rhyme label="a" type="m" corresp="#s9:l1">koop</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Dat eeuwigh kan <rhyme label="b" type="f" corresp="#s9:l2">vervreuchden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
