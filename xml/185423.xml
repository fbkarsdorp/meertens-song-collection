    <tags/>
    <melody>Windje daar het bos af drilt</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Alle ghebreken <rhyme label="a" type="m">uytgheseyt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Isser een die my <rhyme label="a" type="m" corresp="#s1:l1">verleyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die mijn sinnen // haest van <rhyme label="b" type="f">binnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Can verrucken van het <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Daer de ziel door wert <rhyme label="c" type="m" corresp="#s1:l4">ghevoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dats d’uytkeer tot alle <rhyme label="a" type="m">dingh</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">De ghedachten <rhyme label="a" type="m" corresp="#s2:l1">sonderlingh</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Ommesweven // en <rhyme label="b" type="f">ghedreven</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">In verstroyingh hier en <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Hier door wert ‘t ghemoet <rhyme label="c" type="m" corresp="#s2:l4">onklaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">‘t Ooghe des herten en is <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Gansch eenvoudich so men <rhyme label="a" type="m" corresp="#s3:l1">siet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Maer ‘t wil wercken // sonder <rhyme label="b" type="f">mercken</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Wat hem schaed’ is of <rhyme label="c" type="m">profijt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">‘t Loopt te haest uyt zijn <rhyme label="c" type="m" corresp="#s3:l4">limijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">D’ord’ning daer hem Godt in <rhyme label="a" type="m">stelt</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Wil het breken met <rhyme label="a" type="m" corresp="#s4:l1">ghewelt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Imagneeren // en <rhyme label="b" type="f">begeeren</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Na zijn inghebeelde <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Hier door wert de ziel <rhyme label="c" type="m" corresp="#s4:l4">ontrust</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Bleef het in zijn wezen <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Godt en soudet niet mis <rhyme label="a" type="m" corresp="#s5:l1">gaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Maer hem geven // volheyts <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Soetheydt boven alle <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Een ghenoeghen in ‘t <rhyme label="c" type="m" corresp="#s5:l4">gemoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Godt en heeftet nnoyt <rhyme label="a" type="m">belast</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Door hem selven ist <rhyme label="a" type="m" corresp="#s6:l1">vermast</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Met indringen // van veel <rhyme label="b" type="f">dingen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Daert wel buyten blyven <rhyme label="c" type="m">mocht</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Soo ‘t hem selven wel <rhyme label="c" type="m" corresp="#s6:l4">bedocht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">‘t Oogh is eenen spiegel <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Maer een stofje valt het <rhyme label="a" type="m" corresp="#s7:l1">swaer</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">‘t Moet hem wachten // of de <rhyme label="b" type="f">klachten</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Blyven altijt even <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">‘t Is een oorsaeck van zijn <rhyme label="c" type="m" corresp="#s7:l4">doot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
