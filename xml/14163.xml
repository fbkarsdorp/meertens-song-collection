  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHenade vrede te <rhyme label="a" type="f">samen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Sy by u tot elcken <rhyme label="b" type="m">keer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Mijn broeders naer den <rhyme label="a" type="f" corresp="#s1:l1">betamen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ende mijn susters inden <rhyme label="b" type="m" corresp="#s1:l2">Heer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wandelt op des Heeren <rhyme label="c" type="f">weghen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hier in dit ertsche <rhyme label="d" type="m">pleyn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wilt Christum volgen ter <rhyme label="d" type="m" corresp="#s1:l6">deghen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En vreest storm hagel noch <rhyme label="c" type="f" corresp="#s1:l5">reghen</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Maer fondeert u op den rechten <rhyme label="d" type="m" corresp="#s1:l6">steyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een steen daer wy af <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat is Christus den hoecsteen <rhyme label="b" type="m">hoort</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Die wiert van de lieden <rhyme label="a" type="f" corresp="#s2:l1">versteken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ende verworpen verstaet mijn <rhyme label="b" type="m" corresp="#s2:l2">woort</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Maer wy gheloovige <rhyme label="c" type="f">gronden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Is hy wtvercoren en <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En verlaet hem tot gheen <rhyme label="d" type="m" corresp="#s2:l6">stonden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Op dat wy niet worden <rhyme label="c" type="f" corresp="#s2:l5">bevonden</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Gelijc de dwase maechden <rhyme label="d" type="m" corresp="#s2:l6">onvroet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer laet ons gelijcken <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die andere vijf Maechden <rhyme label="b" type="m">wijs</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo mogen wy eeuwich <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En by Godt commen int <rhyme label="b" type="m" corresp="#s3:l2">Paradijs</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">In die hemelsche <rhyme label="c" type="f">Stede</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daer eeuwighe vreucht sal <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dus laet ons wandelen in <rhyme label="d" type="m" corresp="#s3:l6">vrede</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Mijn Broeders en Susters <rhyme label="c" type="f" corresp="#s3:l5">mede</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Soo werden wy salich t'allen <rhyme label="d" type="m" corresp="#s3:l6">termijn</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt naer de vrede <rhyme label="a" type="f">haken</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hoort wat ons Christus heeft <rhyme label="b" type="m">geseyt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Salich zijn die de vrede <rhyme label="a" type="f" corresp="#s4:l1">maken</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Mattheus int vijfde ist uyt <rhyme label="b" type="m" corresp="#s4:l2">geleyt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wandelt in vrede <rhyme label="c" type="f">coene</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ghelijc ghy gheroepen <rhyme label="d" type="m">zijt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Soo mocht ghy t'allen <rhyme label="d" type="m" corresp="#s4:l6">saysoene</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Op den berch al van <rhyme label="c" type="f" corresp="#s4:l5">spoene</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">t'Nieuwe liet singen en zijn <rhyme label="d" type="m" corresp="#s4:l6">verblijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">t'Nieuwe liet sullen sy <rhyme label="a" type="f">singen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ende in vreuchden wesen <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Als gemeste Calveren <rhyme label="a" type="f" corresp="#s5:l1">springen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo Malachias int vierde <rhyme label="b" type="m" corresp="#s5:l2">bediet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Naer dat staet mijn <rhyme label="c" type="f">verlanghen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Vrinden hoort dit <rhyme label="d" type="m">besluyt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Wilt hem t'allen tijden <rhyme label="d" type="m" corresp="#s5:l6">aenhanghen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Christus sal u <rhyme label="c" type="f" corresp="#s5:l5">ontfanghen</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Al voor zijn Dochter en lieve <rhyme label="d" type="m" corresp="#s5:l6">bruyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Och Bruyt Christi ende <rhyme label="a" type="f">Gemeente</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Wilt doch volghen uwen <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die als vleesch en been zijt van Christus <rhyme label="a" type="f" corresp="#s6:l1">ghebeente</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Houdt vast tot ten eynde <rhyme label="b" type="m" corresp="#s6:l2">aen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Tis wel om te <rhyme label="c" type="f">beclaghen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dat Godts volck soo seer <rhyme label="d" type="m">verstoort</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">In dese laetste <rhyme label="d" type="m" corresp="#s6:l6">daghen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Sietmen de lieden <rhyme label="c" type="f" corresp="#s6:l5">vertraghen</rhyme>,</l>
        <l id="s6:l9" met="4" type="-+">Al om te gane door d'enge <rhyme label="d" type="m" corresp="#s6:l6">poort</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den wech is enge en <rhyme label="a" type="f">nauwe</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die wy moeten treden <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Weynich zijnder die daer <rhyme label="a" type="f" corresp="#s7:l1">opbauwen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Maer soecken al den ruymen wech <rhyme label="b" type="m" corresp="#s7:l2">schier</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die daer leyt totter <rhyme label="c" type="f">hellen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">O menschen wilt wel toe <rhyme label="d" type="m">sien</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Eer dat dien dach u compt <rhyme label="d" type="m" corresp="#s7:l6">quellen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Daer die Propheten ons af <rhyme label="c" type="f" corresp="#s7:l5">vermellen</rhyme></l>
        <l id="s7:l9" met="4" type="-+">Dat ghy Godts toorne doen meucht <rhyme label="d" type="m" corresp="#s7:l6">ontvlien</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wilt nu ontvlieden Gods <rhyme label="a" type="f">tooren</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Dat ghy meucht hooren seer <rhyme label="b" type="m">playsant</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Compt hier mijn <rhyme label="a" type="f" corresp="#s8:l1">uytvercooren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Besidt mijn rijcke seer <rhyme label="b" type="m" corresp="#s8:l2">tryumphant</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Twelck u tot alder <rhyme label="c" type="f">uren</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Van eeuwighe tijden is <rhyme label="d" type="m">bereyt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Dan sal ghedaen zijn ons <rhyme label="d" type="m" corresp="#s8:l6">treuren</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Veel vreucht sal ons <rhyme label="c" type="f" corresp="#s8:l5">ghebeuren</rhyme>,</l>
        <l id="s8:l9" met="4" type="-+">Als wy ontfangen het witte <rhyme label="d" type="m" corresp="#s8:l6">cleyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Oorlof broeders en susters <rhyme label="a" type="f">generalich</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Maeckt dat u daet Christelic <rhyme label="b" type="m">blijckt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Wilt ghy lieden oock werden <rhyme label="a" type="f" corresp="#s9:l1">salich</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Geensins van desen steen en <rhyme label="b" type="m" corresp="#s9:l2">wijckt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Daer ick oock van <rhyme label="c" type="f">verhale</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Int eerste en twede vers ist <rhyme label="d" type="m">vervaet</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Dus Broeders <rhyme label="d" type="m" corresp="#s9:l6">princepale</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">En susters alle te <rhyme label="c" type="f" corresp="#s9:l5">male</rhyme>,</l>
        <l id="s9:l9" met="4" type="-+">Bidt voor my Godt vroech ende <rhyme label="d" type="m" corresp="#s9:l6">laet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
