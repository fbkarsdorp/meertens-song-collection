    <melody>Ik heb de groene straten</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">G' Hebt d'Ouden hooren <rhyme label="a" type="f">leere</rhyme></l>
        <l id="s1:l2" met="3" type="-+">De Phariseën <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Bemindt uw naesten <rhyme label="a" type="f" corresp="#s1:l1">seere</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maer uw' vyanden <rhyme label="b" type="m" corresp="#s1:l2">haet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer, ik segh, uw' <rhyme label="a" type="f">vyanden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Bemindt, en doetse <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die van u spreeken <rhyme label="a" type="f" corresp="#s2:l1">schanden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gy goet van spreeken <rhyme label="b" type="m" corresp="#s2:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Bidt voor die sijn <rhyme label="a" type="f">verbolgen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En die u <rhyme label="b" type="m">lasteren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo dat sy u <rhyme label="a" type="f" corresp="#s3:l1">vervolgen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Om  te <rhyme label="b" type="m" corresp="#s3:l2">beschadigen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dat gy met sulke <rhyme label="a" type="f">daden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sijt Kinders van uw <rhyme label="b" type="m">Vaêr</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die over goed' en <rhyme label="a" type="f" corresp="#s4:l1">quaden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Sijn Son laet schijnen <rhyme label="b" type="m" corresp="#s4:l2">klaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die door sijn milde <rhyme label="a" type="f">seegen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Op goed' en quaden <rhyme label="b" type="m">giet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En sijn vruchtbaren <rhyme label="a" type="f" corresp="#s5:l1">reegen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van niemandt en <rhyme label="b" type="m" corresp="#s5:l2">verdriet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Is 't saek dat gy uw' <rhyme label="a" type="f">vrinden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Alleenelijk <rhyme label="b" type="m">bemindt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wat loon sult ghy dan <rhyme label="a" type="f" corresp="#s6:l1">vinden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wat of ghy daer mee <rhyme label="b" type="m" corresp="#s6:l2">windt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dat doen ook de <rhyme label="a" type="f">Sondare</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En Publicanen <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die minnen ook, <rhyme label="a" type="f" corresp="#s7:l1">voorware</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Die haer beminnen <rhyme label="b" type="m" corresp="#s7:l2">wel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Is 't dat gy aen die <rhyme label="a" type="f">geene</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die u weldaden <rhyme label="b" type="m">geeft</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Maer goet doen wilt <rhyme label="a" type="f" corresp="#s8:l1">alleene</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Wat grati of dat <rhyme label="b" type="m" corresp="#s8:l2">heeft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Indien gy aen die <rhyme label="a" type="f">geenen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Daer gy van waght <rhyme label="b" type="m">profijt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Alleenelijk wilt <rhyme label="a" type="f" corresp="#s9:l1">leenen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Wie of u danke <rhyme label="b" type="m" corresp="#s9:l2">wijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dat siet men wel <rhyme label="a" type="f">geschieden</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Van de Sondaren <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die 't leen elkander <rhyme label="a" type="f" corresp="#s10:l1">bieden</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Om hare eygen <rhyme label="b" type="m" corresp="#s10:l2">baet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Is 't dat gy-lie wilt <rhyme label="a" type="f">groeten</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Uw Broederen <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dat selfde ook doen <rhyme label="a" type="f" corresp="#s11:l1">moeten</rhyme></l>
        <l id="s11:l4" met="3" type="-+">De Heydens in 't <rhyme label="b" type="m" corresp="#s11:l2">gemeen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Maer mindt gy uw' <rhyme label="a" type="f">vyanden</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En gundt haer uw' <rhyme label="b" type="m">weldaet</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En leent haer uwe <rhyme label="a" type="f" corresp="#s12:l1">panden</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">En waght daer van geen <rhyme label="b" type="m" corresp="#s12:l2">baet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Dan sult gy weesen <rhyme label="a" type="f">Soonen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Van d' alderhooghsten <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Die u dat dan sal <rhyme label="a" type="f" corresp="#s13:l1">loonen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Wel rijkelijken <rhyme label="b" type="m" corresp="#s13:l2">weer</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Want hy is tot de <rhyme label="a" type="f">quaden</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">En tot d'ondangkbaer' <rhyme label="b" type="m">mildt</rhyme>:</l>
        <l id="s14:l3" met="3" type="-+">Dus weesen vol <rhyme label="a" type="f" corresp="#s14:l1">genaden</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Als uwen Vader, <rhyme label="b" type="m" corresp="#s14:l2">wilt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Soekt dan <rhyme label="a" type="f">volmaektigheede</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Op dat gy daer toe <rhyme label="b" type="m">raekt</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Gelijk uw Vader <rhyme label="a" type="f" corresp="#s15:l1">meede</rhyme></l>
        <l id="s15:l4" met="3" type="-+">In d'Hemel is <rhyme label="b" type="m" corresp="#s15:l2">volmaekt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
