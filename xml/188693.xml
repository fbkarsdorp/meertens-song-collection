  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ik ben de Zoon van een <rhyme label="a" type="m">Bataaf</rhyme>:</l>
        <l id="s1:l2" met="3" type="-+">De Vrijheid is mijn <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ik ga haar dienen, niet als <rhyme label="a" type="m" corresp="#s1:l1">slaaf</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maar grijp het blank <rhyme label="b" type="m" corresp="#s1:l2">geweer</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Uit liesde voor mijn <rhyme label="c" type="m">land</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat is mijn duurste <rhyme label="c" type="m" corresp="#s1:l5">pand</rhyme>!</l>
        <l id="s1:l7" met="4" type="-+">Voor 't land waar in ik 't licht <rhyme label="d" type="m">genoot</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Trotseer ik staal en <rhyme label="d" type="m" corresp="#s1:l7">lood</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'t Zijn lafaards die, om geld of <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Zich houden bij den <rhyme label="b" type="m">Disch</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Alleen gebrek aan deugd en <rhyme label="a" type="m" corresp="#s2:l1">moed</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Baardt hun die <rhyme label="b" type="m" corresp="#s2:l2">hindernis</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Wat is er op deeze <rhyme label="c" type="m">aard</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">O Belgen Kroost! meer <rhyme label="c" type="m" corresp="#s2:l5">waard</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Dan uwe Vrijheid, waar bij 't <rhyme label="d" type="m">goud</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Hoe schoon, geen proef <rhyme label="d" type="m" corresp="#s2:l7">behoudt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dat oude Grijsaards, <rhyme label="a" type="m">afgeleeft</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zich kluistren aan den <rhyme label="b" type="m">haart</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Maar hij die jeugd en kragten <rhyme label="a" type="m" corresp="#s3:l1">heeft</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En nog het huis <rhyme label="b" type="m" corresp="#s3:l2">bewaard</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Wanneer 't de Vrijheid <rhyme label="c" type="m">geldt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Verdient met regt <rhyme label="c" type="m" corresp="#s3:l5">gesteld</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Bij 't laage volk, dat Land en <rhyme label="d" type="m">Staat</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Voor 't zelfbelang <rhyme label="d" type="m" corresp="#s3:l7">versmaadt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Welaan dan jonge <rhyme label="a" type="m">Landgenoot</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Koom volg mij op mijn <rhyme label="b" type="m">spoor</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Voeg u naast mij, o <rhyme label="a" type="m" corresp="#s4:l1">Belgenloot</rhyme>!</l>
        <l id="s4:l4" met="3" type="-+">Bij Neerlandsch <rhyme label="b" type="m" corresp="#s4:l2">Heldenkoor</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Men sterst doch vroeg of <rhyme label="c" type="m">laat</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Koom, sneef dan voor den <rhyme label="c" type="m" corresp="#s4:l5">Staat</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Of keer met roem en Krijgsmans <rhyme label="d" type="m">eer</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Tor uwe Vrienden <rhyme label="d" type="m" corresp="#s4:l7">weêr</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wat wederhoud u, is 't de <rhyme label="a" type="m">kost</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En 't ongemak van 't <rhyme label="b" type="m">veld</rhyme>?</l>
        <l id="s5:l3" met="4" type="-+">Wie heeft u van den dwang <rhyme label="a" type="m" corresp="#s5:l1">verlost</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wie Vrijheid weêr <rhyme label="b" type="m" corresp="#s5:l2">hersteld</rhyme>!</l>
        <l id="s5:l5" met="3" type="-+">Was 't niet den stonten <rhyme label="c" type="m">Gal</rhyme>?</l>
        <l id="s5:l6" met="3" type="-+">Koom, volg in dit <rhyme label="c" type="m" corresp="#s5:l5">geval</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Zijn Mannenschreên; geen <rhyme label="d" type="m">tegenspoed</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Weêrhield zijn <rhyme label="d" type="m" corresp="#s5:l7">Heldenvoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Terwijl de guure <rhyme label="a" type="m">Wintervorst</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Het al in ys <rhyme label="b" type="m">herschiep</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Was slegts zijn koets den glazen <rhyme label="a" type="m" corresp="#s6:l1">korst</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Waarop dien Krijgsman <rhyme label="b" type="m" corresp="#s6:l2">sliep</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Hij lag, bij 't buldrend <rhyme label="c" type="m">weêr</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Zich op den stroohalm <rhyme label="c" type="m" corresp="#s6:l5">neêr</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Een linne tent - een dak van <rhyme label="d" type="m">riet</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Meer had uw Broeder <rhyme label="d" type="m" corresp="#s6:l7">niet</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O! had de Gal dat leed <rhyme label="a" type="m">ontzien</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Waar was uw Vrijheid <rhyme label="b" type="m">thans</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Voor eeuwig zaagt gij ze u <rhyme label="a" type="m" corresp="#s7:l1">ontvlien</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">Voor eeuwig dook haar <rhyme label="b" type="m" corresp="#s7:l2">glans</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Maar neen: standvaste <rhyme label="c" type="m">moed</rhyme></l>
        <l id="s7:l6" met="3" type="-+">In leed en <rhyme label="c" type="m" corresp="#s7:l5">tegenspoed</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">In honger, koude en vuur en <rhyme label="d" type="m">staal</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Schonk hem den <rhyme label="d" type="m" corresp="#s7:l7">zegepraal</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Welaan, men volg zijn <rhyme label="a" type="m">Heldenschreên</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">Men wijk hem niet in <rhyme label="b" type="m">deugd</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Maar deel met hem de <rhyme label="a" type="m" corresp="#s8:l1">Krijgstrofeen</rhyme>!</l>
        <l id="s8:l4" met="3" type="-+">Koom Vaderlandsche <rhyme label="b" type="m" corresp="#s8:l2">jeugd</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Wanneer 't de Vrijheid <rhyme label="c" type="m">geldt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Zij elk Bataaf een <rhyme label="c" type="m" corresp="#s8:l5">Held</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Maak, maak U land den eernaam <rhyme label="d" type="m">waard</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Dat het nog Helden <rhyme label="d" type="m" corresp="#s8:l7">baardt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
