    <melody/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Als ik ben <rhyme label="a" type="m">gedezerteerd</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Tot Mechelen ben ik <rhyme label="b" type="f">gekoomen</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">De Fransche hebbe my <rhyme label="a" type="m" corresp="#s1:l1">geattrapeerd</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">My dagt daar zou 'er wat van <rhyme label="b" type="f" corresp="#s1:l2">koomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Zy vraagde my al naar myn <rhyme label="a" type="m">pas</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En dat zo met <rhyme label="b" type="f">eenen</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Ik zei 'er Citoyen ik kan u niet <rhyme label="a" type="m" corresp="#s2:l1">verstaan</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Zy bonden my aan armen en <rhyme label="b" type="f" corresp="#s2:l2">beenen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zy bragten my by den <rhyme label="a" type="m">Commandant</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Hy zei 'er nu zal ik u wel <rhyme label="b" type="f">krygen</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Naar de waterpoort zo moest ik <rhyme label="a" type="m" corresp="#s3:l1">gaan</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En nog moest stilletjes <rhyme label="b" type="f" corresp="#s3:l2">zwygen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Zes-en-twintig maande heb ik <rhyme label="a" type="m">verwagt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Al op de waterpoort <rhyme label="b" type="f">gezeeten</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Toen moest ik voor myn pyn en <rhyme label="a" type="m" corresp="#s4:l1">smert</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Den Tribunal <rhyme label="b" type="f" corresp="#s4:l2">passeeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">En als ik kwam op 't <rhyme label="a" type="m">Tribunal</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Wat wierd 'er myn daar <rhyme label="b" type="f">voorgeleezen</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Agt jaaren in de yzers tegen wil of tegen <rhyme label="a" type="m" corresp="#s5:l1">dank</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Myn dagt dat kan 'er niet <rhyme label="b" type="f" corresp="#s5:l2">passeeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Myn Divanseur sprak heel <rhyme label="a" type="m">geland</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat zal 'er voorwaar niet <rhyme label="b" type="f">weezen</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">Agt jaaren in de yzers dat is veel te <rhyme label="a" type="m" corresp="#s6:l1">lang</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Daar over zullen wy <rhyme label="b" type="f" corresp="#s6:l2">appeleeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">En toen kreeg ik nog een goede <rhyme label="a" type="m">afslag</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Al van agt jaaren op drie <rhyme label="b" type="f">maande</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">Nooit had ik 'er een blyder <rhyme label="a" type="m" corresp="#s7:l1">dag</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">My dagt dat zal 'er wel <rhyme label="b" type="f" corresp="#s7:l2">voleinde</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
