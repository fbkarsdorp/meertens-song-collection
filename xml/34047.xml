    <melody>Wanneer ik slaap</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Een schoone <rhyme label="a" type="m">saek</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wensch ik van mijnen <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Waer nae ik <rhyme label="a" type="m" corresp="#s1:l1">haek</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En hartelijk <rhyme label="b" type="m" corresp="#s1:l2">begeer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dat soo langh als ik <rhyme label="c" type="m">leef</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Hy mijn togh <rhyme label="c" type="m" corresp="#s1:l5">geef</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">In sijn Godlijk <rhyme label="d" type="m">huys</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Uyt 's weerelts <rhyme label="d" type="m" corresp="#s1:l7">gedruys</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">In sijn Godlijk huys te <rhyme label="e" type="f">woone</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">O Huys, o schoone Huys, Gods <rhyme label="e" type="f" corresp="#s1:l9">Troone</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Hoe is <rhyme label="a" type="m">bemindt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Uw' Tabernakel <rhyme label="b" type="m">Heer</rhyme>!</l>
        <l id="s2:l3" met="2" type="-+">Mijn hardt <rhyme label="a" type="m" corresp="#s2:l1">begindt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Te wenschen alsoo <rhyme label="b" type="m" corresp="#s2:l2">seer</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat het by nae <rhyme label="c" type="m">beswijmt</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En swaerlijk <rhyme label="c" type="m" corresp="#s2:l5">hijmt</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Om in uwe <rhyme label="d" type="m">Sael</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Vol van <rhyme label="d" type="m" corresp="#s2:l7">minne-strael</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Om in uwe Sael te <rhyme label="e" type="f">koomen</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">O Sael, playsante Sael vol <rhyme label="e" type="f" corresp="#s2:l9">vroomen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Mijn Siel <rhyme label="a" type="m">verheught</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En ook mijn kranke <rhyme label="b" type="m">vleys</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Schept groot <rhyme label="a" type="m" corresp="#s3:l1">geneught</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Heer als ik om u <rhyme label="b" type="m" corresp="#s3:l2">peys</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En om uw' schoon <rhyme label="c" type="m">Autaer</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Gy sijt <rhyme label="c" type="m" corresp="#s3:l5">aldaer</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Mijn Godt en mijn <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Dien ik minne <rhyme label="d" type="m" corresp="#s3:l7">seer</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Mijn Godt en mijn Heer, mijn <rhyme label="e" type="f">Kooningh</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Autaer, o schoon Autaer, Goods <rhyme label="e" type="f" corresp="#s3:l9">wooningh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Saligh sijn <rhyme label="a" type="m">sy</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die woonen in uw <rhyme label="b" type="m">huys</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Want sy u <rhyme label="a" type="m" corresp="#s4:l1">bly</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Loven met harten <rhyme label="b" type="m" corresp="#s4:l2">kuys</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Daer is opreght <rhyme label="c" type="m">geneught</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">En vaste <rhyme label="c" type="m" corresp="#s4:l5">vreught</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Want gy haer <rhyme label="d" type="m">versaet</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Met liefd' sonder <rhyme label="d" type="m" corresp="#s4:l7">maet</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Want gy haer versaet van <rhyme label="e" type="f">binnen</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">O Huys, o Godlijk Huys der <rhyme label="e" type="f" corresp="#s4:l9">minnen</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Eer dat ik <rhyme label="a" type="m">souw</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hier worden groot <rhyme label="b" type="m">geaght</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">In het <rhyme label="a" type="m" corresp="#s5:l1">gebouw'</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van der Sondaren <rhyme label="b" type="m" corresp="#s5:l2">praght</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Soo wensche ik wel <rhyme label="c" type="m">eer</rhyme></l>
        <l id="s5:l6" met="2" type="-+">In uw' huys, <rhyme label="c" type="m" corresp="#s5:l5">Heer</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Liever <rhyme label="d" type="m">d'alderkleynst</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Wensch ik <rhyme label="d" type="m" corresp="#s5:l7">onbeveynst</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Liever d'alderkleynst te <rhyme label="e" type="f">weesen</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">O huys, o Godlijk huys <rhyme label="e" type="f" corresp="#s5:l9">gepreesen</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">'t Is nu <rhyme label="a" type="m">gewis</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat Goods Tempel by <rhyme label="b" type="m">ons</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Heerlijker <rhyme label="a" type="m" corresp="#s6:l1">is</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dan Koningh <rhyme label="b" type="m" corresp="#s6:l2">Salomons</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Want Godt wordt meer <rhyme label="c" type="m">bekent</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Te sijn <rhyme label="c" type="m" corresp="#s6:l5">present</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Want hy rust <rhyme label="d" type="m">aldaer</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">Als Mann' op 't <rhyme label="d" type="m" corresp="#s6:l7">Autaer</rhyme>,</l>
        <l id="s6:l9" met="4" type="-+">Want hy rust aldaer <rhyme label="e" type="f">waeraghtigh</rhyme>,</l>
        <l id="s6:l10" met="4" type="-+">Daer toont, daer toont hy hem <rhyme label="e" type="f" corresp="#s6:l9">Almaghtigh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+"><rhyme label="a" type="m">Waeraghtelijk</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dit is de Gulde <rhyme label="b" type="m">Poort</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Van 't <rhyme label="a" type="m" corresp="#s7:l1">Heemel-rijk</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hier wort mijn Siel <rhyme label="b" type="m" corresp="#s7:l2">bekoort</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Om in uw' huys te <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Mijn voeten <rhyme label="c" type="m" corresp="#s7:l5">staen</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Om in uwe <rhyme label="d" type="m">Sael</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Reed in uw <rhyme label="d" type="m" corresp="#s7:l7">portael</rhyme>,</l>
        <l id="s7:l9" met="4" type="-+">Om in uwe Sael te <rhyme label="e" type="f">loope</rhyme>,</l>
        <l id="s7:l10" met="4" type="-+">O Sael, gewenste Sael mijn <rhyme label="e" type="f" corresp="#s7:l9">hoope</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Ons vuyle <rhyme label="a" type="m">schoen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die moeten wy <rhyme label="b" type="m">voortaen</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Hier ook uyt <rhyme label="a" type="m" corresp="#s8:l1">doen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Als Moyses heeft <rhyme label="b" type="m" corresp="#s8:l2">gedaen</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Op Sinay d' Heyl'ge <rhyme label="c" type="m">stee'</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Want men ook <rhyme label="c" type="m" corresp="#s8:l5">mee</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">Hier moet weesen <rhyme label="d" type="m">kuys</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">In Goodts Heyl'ge <rhyme label="d" type="m" corresp="#s8:l7">huys</rhyme>,</l>
        <l id="s8:l9" met="4" type="-+">Hier moet weesen kuys en <rhyme label="e" type="f">reyne</rhyme>,</l>
        <l id="s8:l10" met="4" type="-+">O huys, gy sijt Goodts huys <rhyme label="e" type="f" corresp="#s8:l9">certeyne</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
