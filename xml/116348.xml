    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MYn ziel stijg <rhyme label="a" type="m">Heemel-waard</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Verlaat de snoode <rhyme label="a" type="m" corresp="#s1:l1">aard</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Gaa in den Geest <rhyme label="b" type="f">beschouwen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">De glans en <rhyme label="c" type="m">heerlijkheid</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van God ten toon <rhyme label="c" type="m" corresp="#s1:l4">geleid</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In d' Heemelze <rhyme label="b" type="f" corresp="#s1:l3">gebouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Bespiegel God uw <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van wien gedaald is <rhyme label="a" type="m" corresp="#s2:l1">ne'er</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Al 't geen gy hebt <rhyme label="b" type="f">ontfangen</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Wiens Goddelijke <rhyme label="c" type="m">kracht</rhyme></l>
        <l id="s2:l5" met="3" type="-+">U in de Weereld <rhyme label="c" type="m" corresp="#s2:l4">bragt</rhyme>;</l>
        <l id="s2:l6" met="3" type="-+">Dies blijf aan hem vast <rhyme label="b" type="f" corresp="#s2:l3">hangen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Beschouw Gods warde <rhyme label="a" type="m">Zoon</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Verheeven op den <rhyme label="a" type="m" corresp="#s3:l1">troon</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Uw heiland en <rhyme label="b" type="f">beminde</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Buit voor zijn hoogheid <rhyme label="c" type="m">ne'er</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Aan-bid Hem als uw <rhyme label="c" type="m" corresp="#s3:l4">Heer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Zoo zult gy vreede <rhyme label="b" type="f" corresp="#s3:l3">vinden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Aan-zie het groot <rhyme label="a" type="m">getal</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Der Eng'len, wiens <rhyme label="a" type="m" corresp="#s4:l1">geschal</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Klinkt in des Heemels <rhyme label="b" type="f">zaalen</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Aan-hoor het zoet <rhyme label="c" type="m">geluid</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Hoe zy eeuw in eeuw <rhyme label="c" type="m" corresp="#s4:l4">uit</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Hun Scheppers lof <rhyme label="b" type="f" corresp="#s4:l3">verhaalen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Oog op het schoon <rhyme label="a" type="m">cieraad</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van glory, dat daar <rhyme label="a" type="m" corresp="#s5:l1">staat</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat nimmer kan <rhyme label="b" type="f">verdwijnen</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Maar in der <rhyme label="c" type="m">eeuwigheid</rhyme></l>
        <l id="s5:l5" met="3" type="-+">In volle <rhyme label="c" type="m" corresp="#s5:l4">Majestait</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Gelijk de Zon zal <rhyme label="b" type="f" corresp="#s5:l3">schijnen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Met aandacht eens <rhyme label="a" type="m">bevat</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dien onwaardeerb're <rhyme label="a" type="m" corresp="#s6:l1">schat</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die nimmer kan <rhyme label="b" type="f">verderven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die noit en word <rhyme label="c" type="m">geroofd</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Wiens luister noit <rhyme label="c" type="m" corresp="#s6:l4">verdoof</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die 't heilig volk zal <rhyme label="b" type="f" corresp="#s6:l3">erven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Vermaak u in die <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die d' Engelen <rhyme label="a" type="m" corresp="#s7:l1">verheugd</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En die uit God komt <rhyme label="b" type="f">stroomen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Die noit in 's Menschen <rhyme label="c" type="m">ziel</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Op 't aard-rijk <rhyme label="c" type="m" corresp="#s7:l4">needer-viel</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Bereid voor alle <rhyme label="b" type="f" corresp="#s7:l3">vroomen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Schep hier uw <rhyme label="a" type="m">laaffenis</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Uit 't geen, dat eeuwig <rhyme label="a" type="m" corresp="#s8:l1">is</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En waarlijk kan <rhyme label="b" type="f">verzaaden</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Laat vaaren d' <rhyme label="c" type="m">ydelheid</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Des Weerelds, die <rhyme label="c" type="m" corresp="#s8:l4">verleid</rhyme>:</l>
        <l id="s8:l6" met="3" type="-+">Zoo krijgt gy winst voor <rhyme label="b" type="f" corresp="#s8:l3">schaade</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">God zy u hoogste <rhyme label="a" type="m">goed</rhyme>:</l>
        <l id="s9:l2" met="3" type="-+">Draag Hem steeds in 't <rhyme label="a" type="m" corresp="#s9:l1">gemoed</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Laat Iesus u <rhyme label="b" type="f">geleiden</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Zoo hebt gy waare <rhyme label="c" type="m">rust</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Al 't geen uw herte <rhyme label="c" type="m" corresp="#s9:l4">lust</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">Niets zal u van God <rhyme label="b" type="f" corresp="#s9:l3">scheiden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Bemin des Heemels <rhyme label="a" type="m">schat</rhyme>;</l>
        <l id="s10:l2" met="3" type="-+">Zie dat die die <rhyme label="a" type="m" corresp="#s10:l1">bevat</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Wild naa Gods glory <rhyme label="b" type="f">trachten</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Als zijn d' hoogste <rhyme label="c" type="m">eer</rhyme>;</l>
        <l id="s10:l5" met="3" type="-+">Des Heemels vreugd <rhyme label="c" type="m" corresp="#s10:l4">begeer</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Mijn Geest uit al uw <rhyme label="b" type="f" corresp="#s10:l3">krachten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
