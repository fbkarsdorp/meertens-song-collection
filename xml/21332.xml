<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21332</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="troostlied" translation="consolation song">troostlied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Het daagt in de oosten</melody>
    <categories>
      <category translation="emotions">emoties</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn liet om te <rhyme label="a" type="f">vermaken</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mijn Broeder ons mede <rhyme label="b" type="m">lidt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Die binnen Amsterdam wilt <rhyme label="a" type="f" corresp="#s1:l1">smaken</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Om die waerheyt gheuangen <rhyme label="b" type="m" corresp="#s1:l2">sidt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Veel wijsheyt cracht Gods <rhyme label="a" type="f">gracy</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Verquickinge troost <rhyme label="b" type="m">menichfout</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Wensch ick mijn broeder in <rhyme label="a" type="f" corresp="#s2:l1">tribulacy</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat hy nu stijf <rhyme label="b" type="m" corresp="#s2:l2">aenhout</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Och broeder wilt <rhyme label="a" type="f">versinnen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hoe veel beloften <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dat sy wel hebben die hier <rhyme label="a" type="f" corresp="#s3:l1">verwinnen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Nae tsuer so comt het <rhyme label="b" type="m" corresp="#s3:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Aenmerct van Abels <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat Cayin zijn broeder doot <rhyme label="b" type="m">sloech</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Jacob die most voor Esau <rhyme label="a" type="f" corresp="#s4:l1">vlieden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Haet, geuanckenisse Joseph <rhyme label="b" type="m" corresp="#s4:l2">verdroech</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Doen Gods wet was <rhyme label="a" type="f">gegeuen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Worden sy <rhyme label="b" type="m">ghebenedijt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Voorspoedich al die daer in <rhyme label="a" type="f" corresp="#s5:l1">bleuen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Noch hadden die vroomen <rhyme label="b" type="m" corresp="#s5:l2">strijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Micheas die is <rhyme label="a" type="f">ghesmeten</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Om rechte <rhyme label="b" type="m">Prophecy</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Most water en broot, een tijt lanc <rhyme label="a" type="f" corresp="#s6:l1">eeten</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Jeremias veel drucx leet <rhyme label="b" type="m" corresp="#s6:l2">hy</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Susanna is <rhyme label="a" type="f">onschuldich</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Veroordelt maer noch <rhyme label="b" type="m">ontgaen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Die drie Jongelingen zijn <rhyme label="a" type="f" corresp="#s7:l1">verduldich</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Inden ouen geuallen merct <rhyme label="b" type="m" corresp="#s7:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Eleaser out van <rhyme label="a" type="f">daghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die is ghedoot seer <rhyme label="b" type="m">fel</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Had hy willen veynsen hoort <rhyme label="a" type="f" corresp="#s8:l1">gewagen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Hy had dat ontgaen seer <rhyme label="b" type="m" corresp="#s8:l2">wel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Die vroome Broeders <rhyme label="a" type="f">seuen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hebben om des heeren <rhyme label="b" type="m">wet</rhyme></l>
        <l id="s9:l3" met="3" type="-+">In smarte ghelaten haer <rhyme label="a" type="f" corresp="#s9:l1">leuen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Met haer moeder hier wel op <rhyme label="b" type="m" corresp="#s9:l2">let</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Och broeder wilt hier op <rhyme label="a" type="f">kijcken</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Blijft ghetrou tot inden <rhyme label="b" type="m">doot</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Tot geender syden wilt <rhyme label="a" type="f" corresp="#s10:l1">afwijcken</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Siet op die belooninge <rhyme label="b" type="m" corresp="#s10:l2">groot</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Siet broeder dese <rhyme label="a" type="f">stonden</rhyme></l>
        <l id="s11:l2" met="3" type="-+">In segening wterlijck <rhyme label="b" type="m">hoort</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Christus heeft ons nu wilt <rhyme label="a" type="f" corresp="#s11:l1">doorgronden</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Druck toegeseyt met zijn <rhyme label="b" type="m" corresp="#s11:l2">woort</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Hy heeft selfs voor <rhyme label="a" type="f">gestreden</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Door bitter lijden <rhyme label="b" type="m">swaer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Aent cruys ghehecht, voor diet hem <rhyme label="a" type="f" corresp="#s12:l1">deden</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Badt hy zijnen hemelschen <rhyme label="b" type="m" corresp="#s12:l2">vaer</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Merct stephanus aen den <rhyme label="a" type="f">vromen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Die was als Christus <rhyme label="b" type="m">ghesint</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Tleuen is Jacobus oock <rhyme label="a" type="f" corresp="#s13:l1">benomen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Also men Actorum <rhyme label="b" type="m" corresp="#s13:l2">vint</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Al schijnen sy te <rhyme label="a" type="f">steruen</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Voor menschen der <rhyme label="b" type="m">duysternis</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Haer en roert niet aen des doots <rhyme label="a" type="f" corresp="#s14:l1">bederuen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Sy gaen in ruste <rhyme label="b" type="m" corresp="#s14:l2">ghewis</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Of wy naet vleesch noch <rhyme label="a" type="f">leefden</rhyme></l>
        <l id="s15:l2" met="3" type="-+">En dienden die werelt <rhyme label="b" type="m">hier</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Voor druck veruolcht niet en <rhyme label="a" type="f" corresp="#s15:l1">beefden</rhyme></l>
        <l id="s15:l4" met="3" type="-+">So ghenaeckte ons teeuwighe <rhyme label="b" type="m" corresp="#s15:l2">vier</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Waer van wy zijn <rhyme label="a" type="f">ontslegen</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Doort gheloof gherechtueerdicht <rhyme label="b" type="m">pleyn</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Wy sullen gods heerlijckeyt met hem <rhyme label="a" type="f" corresp="#s16:l1">plegen</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Ist dat wy volherden <rhyme label="b" type="m" corresp="#s16:l2">ghemeyn</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Ick wil mijn sang haest <rhyme label="a" type="f">enden</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Neemt toch in danck dit <rhyme label="b" type="m">liet</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Hoewel wy malcander noyt en <rhyme label="a" type="f" corresp="#s17:l1">kenden</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Ter liefden van v ist <rhyme label="b" type="m" corresp="#s17:l2">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Ick groet v Broeder van <rhyme label="a" type="f">harten</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Nu met dit slecht <rhyme label="b" type="m">ghedicht</rhyme></l>
        <l id="s18:l3" met="3" type="-+">En wensch v troost, cracht tot v <rhyme label="a" type="f" corresp="#s18:l1">smarten</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Dat ghy ons moecht zijn een <rhyme label="b" type="m" corresp="#s18:l2">licht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
