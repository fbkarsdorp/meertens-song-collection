  <author>Pieter Datheen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GODT is nochtans troostlick end <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Israel, oock yderman <rhyme label="a" type="m" corresp="#s1:l1">goedt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die met een hert' end ghemoedt <rhyme label="b" type="f">reyne</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Bewaert sijn woor-den groot end <rhyme label="b" type="f" corresp="#s1:l3">kleyne</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Doch so hadden myn voeten <rhyme label="c" type="m">schier</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ghestruyckelt wt mynen wegh, <rhyme label="c" type="m" corresp="#s1:l5">hier</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Ick lagh by nae gheuallen <rhyme label="d" type="m">plat</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Gheweken wt den rechten <rhyme label="d" type="m" corresp="#s1:l7">padt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">T'verdroot my seer dat ick <rhyme label="a" type="m">aensagh</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Der boosen spoet menighen <rhyme label="a" type="m" corresp="#s2:l1">dagh</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Ick konde seer swaerlick <rhyme label="b" type="f">ghehinghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Haer groot gheluck in allen <rhyme label="b" type="f" corresp="#s2:l3">dinghen</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Want se staen niet in s'doods <rhyme label="c" type="m">ghevaer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Maer se blyuen vastlick <rhyme label="c" type="m" corresp="#s2:l5">eenpaer</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Fyn ende gesondt se <rhyme label="d" type="m">voortghaen</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Als palaeysen verciert sy <rhyme label="d" type="m" corresp="#s2:l7">staen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als ander menschen sijn <rhyme label="a" type="m">gheplaeght</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Se blyen vry end' <rhyme label="a" type="m" corresp="#s3:l1">onuertzaeght</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Als ongheluck komt ouer <rhyme label="b" type="f">allen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Se gaen daer gheen slaeghen en <rhyme label="b" type="f" corresp="#s3:l3">vallen</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Dies is haer trotzen goedt <rhyme label="c" type="m">gheacht</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Een kostlick dingh heet haere <rhyme label="c" type="m" corresp="#s3:l5">kracht</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Datse met ghewelt vanghen <rhyme label="d" type="m">aen</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Moet goedt heeten end <rhyme label="d" type="m" corresp="#s3:l7">welghedaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Haer ooghen pruysten seer hoogh' <rhyme label="a" type="m">op</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Wt haeren vetten dicken <rhyme label="a" type="m" corresp="#s4:l1">kop</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Se gaen slechts om met sulcken <rhyme label="b" type="f">rencken</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als se voornemen end <rhyme label="b" type="f" corresp="#s4:l3">bedencken</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Se bringhen alle dingh tot <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">End roemen van t'quaedt end <rhyme label="c" type="m" corresp="#s4:l5">t'verdriet</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Dat se den vromen doen, dies <rhyme label="d" type="m">sy</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Daer nae trotzelick spreken <rhyme label="d" type="m" corresp="#s4:l7">vry</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Se steken stoutlick den mondt <rhyme label="a" type="m">snel</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Nae den hemel, end spreken <rhyme label="a" type="m" corresp="#s5:l1">fel</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Haer tonghe wreedt (doch kleen van <rhyme label="b" type="f">węerde</rhyme>)</l>
        <l id="s5:l4" met="4" type="-+">Relt valschlick ouer die gantsch' <rhyme label="b" type="f" corresp="#s5:l3">ęerde</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Dies struyckelt Godts volck ende <rhyme label="c" type="m">valt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">End twyffelt in sulck een <rhyme label="c" type="m" corresp="#s5:l5">ghestalt</rhyme>:</l>
        <l id="s5:l7" met="4" type="-+">Men schenckt hem end het drinckt met <rhyme label="d" type="m">leydt</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Als water al dees' <rhyme label="d" type="m" corresp="#s5:l7">teghenheit</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Se spreken vermetelick <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Soud' oock wt sijnen throon de <rhyme label="a" type="m" corresp="#s6:l1">Heer</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ons doen aensien ende <rhyme label="b" type="f">bemercken</rhyme>?</l>
        <l id="s6:l4" met="4" type="-+">Soud' Godt acht nemen op ons <rhyme label="b" type="f" corresp="#s6:l3">wercken</rhyme>?</l>
        <l id="s6:l5" met="4" type="-+">Dit sijn de godtloosen seer <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Doch siet men dat het hen wel <rhyme label="c" type="m" corresp="#s6:l5">gaet</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">End dat se werden sat end <rhyme label="d" type="m">ryck</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Hier op ęerden alle <rhyme label="d" type="m" corresp="#s6:l7">ghelyck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Salt om niet sijn dat myn siel' <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Onstraffelick end wel <rhyme label="a" type="m" corresp="#s7:l1">gheleeft</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Hebb'ick om niet in allen <rhyme label="b" type="f">standen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Met onschuldt ghewasschen myn <rhyme label="b" type="f" corresp="#s7:l3">handen</rhyme>?</l>
        <l id="s7:l5" met="4" type="-+">Hebb' ick vergheefs gheweest <rhyme label="c" type="m">ghequelt</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Is al myn smert' als niet <rhyme label="c" type="m" corresp="#s7:l5">ghetelt</rhyme>?</l>
        <l id="s7:l7" met="4" type="-+">Is myn kruys (dat t'allen <rhyme label="d" type="m">stonden</rhyme></l>
        <l id="s7:l8" met="4" type="-+">My toequam) niets węerdt <rhyme label="d" type="m" corresp="#s7:l7">beuonden</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer wild' ick met sulck <rhyme label="a" type="m">onuerstandt</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Spreken: Ick soud' sondighen, <rhyme label="a" type="m" corresp="#s8:l1">want</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Ick moest' verdommen end <rhyme label="b" type="f">beswaeren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Al v' kindren Heer die oyt <rhyme label="b" type="f" corresp="#s8:l3">waeren</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Daer om hebb' ick aerbeydt <rhyme label="c" type="m">ghedaen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Om dit stuck eens recht te <rhyme label="c" type="m" corresp="#s8:l5">verstaen</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Doch het blyft my voor ende <rhyme label="d" type="m">naer</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Schier onbegrypelick end <rhyme label="d" type="m" corresp="#s8:l7">swaer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Tot dat ick in dat <rhyme label="a" type="m">heylighdom</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Vwes tempels Heer ghingh al <rhyme label="a" type="m" corresp="#s9:l1">om</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Dan kond' ick den wtgangh <rhyme label="b" type="f">aenschauwen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Der godtloosen met groot <rhyme label="b" type="f" corresp="#s9:l3">benauwen</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Daerom wandelen se <rhyme label="c" type="m">voorwaer</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Op eenen platten wegh <rhyme label="c" type="m" corresp="#s9:l5">eenpaer</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Daer van se ghestoort sijn <rhyme label="d" type="m">terstondt</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">End vaeren haest ter hellen <rhyme label="d" type="m" corresp="#s9:l7">grondt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dan is verwondert <rhyme label="a" type="m">yderman</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dat se so haest kommen daer <rhyme label="a" type="m" corresp="#s10:l1">van</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">End so tot niet werden <rhyme label="b" type="f">gheslaeghen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Te gronde met schricken end <rhyme label="b" type="f" corresp="#s10:l3">tzaeghen</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">De schyn haers ryckdoms haest <rhyme label="c" type="m">vergaet</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Se sijn veracht end seer <rhyme label="c" type="m" corresp="#s10:l5">versmaedt</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Ghelyck als een droom <rhyme label="d" type="m">onghewis</rhyme></l>
        <l id="s10:l8" met="4" type="-+">Vergaet, alsmen ontwaeket <rhyme label="d" type="m" corresp="#s10:l7">is</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Doch ghingh my sulcks seer nae <rhyme label="a" type="m">altyt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Het queld' end maeckte my vol <rhyme label="a" type="m" corresp="#s11:l1">spyt'</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Iae t'heeft my die nieren <rhyme label="b" type="f">doersteken</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Veel harder dan ick kond' <rhyme label="b" type="f" corresp="#s11:l3">wtspreken</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Ick was wtsins insulck <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Iae ick was by my seluen <rhyme label="c" type="m" corresp="#s11:l5">niet</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Maer als een kalf onwys end <rhyme label="d" type="m">bot</rhyme>,</l>
        <l id="s11:l8" met="4" type="-+">Als ick so murrde teghen <rhyme label="d" type="m" corresp="#s11:l7">Godt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Nochtans wat my Heer <rhyme label="a" type="m">wedervaert</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Ick hangh' v aen sijnde <rhyme label="a" type="m" corresp="#s12:l1">beswaert</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Want in't lyden dat my <rhyme label="b" type="f">benauwet</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Met v' handt ghy my <rhyme label="b" type="f" corresp="#s12:l3">onderhauwet</rhyme>.</l>
        <l id="s12:l5" met="4" type="-+">Ghy gheleydt my nae uwen <rhyme label="c" type="m">raet</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Trauwelick Heer myn <rhyme label="c" type="m" corresp="#s12:l5">toeuerlaet</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Tot dat ick fyn werde <rhyme label="d" type="m">ghebracht</rhyme>,</l>
        <l id="s12:l8" met="4" type="-+">Ter eeren Heer doer uwe <rhyme label="d" type="m" corresp="#s12:l7">kracht</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Alsick dan v hebb', O Heer <rhyme label="a" type="m">myn</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Soud' daer jet anders myn Godt <rhyme label="a" type="m" corresp="#s13:l1">sijn</rhyme>?</l>
        <l id="s13:l3" met="4" type="-+">Soud' ick erghent groot ofte <rhyme label="b" type="f">kleyne</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Een Godt hebben dan v <rhyme label="b" type="f" corresp="#s13:l3">alleyne</rhyme>?</l>
        <l id="s13:l5" met="4" type="-+">Maer ick werde nu gantsch <rhyme label="c" type="m">versmacht</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Myn hert' verliest al sijne <rhyme label="c" type="m" corresp="#s13:l5">kracht</rhyme>,</l>
        <l id="s13:l7" met="4" type="-+">Doch ghy sijt Heer myn troost <rhyme label="d" type="m">gheheel</rhyme>,</l>
        <l id="s13:l8" met="4" type="-+">Myn borcht, myn toevlucht, myn <rhyme label="d" type="m" corresp="#s13:l7">erfdeel</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Want sy die van v wycken <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Sullen vergaen end sijn als <rhyme label="a" type="m" corresp="#s14:l1">kaf</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Se sullen voor v niet <rhyme label="b" type="f">beklyuen</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Die valsche Godtsdiensten <rhyme label="b" type="f" corresp="#s14:l3">bedryuen</rhyme>.</l>
        <l id="s14:l5" met="4" type="-+">Tot v Heer wil ick houden <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">End mynen toevlucht nemen <rhyme label="c" type="m" corresp="#s14:l5">vry</rhyme>,</l>
        <l id="s14:l7" met="4" type="-+">Dat is my t'beste: dies ick <rhyme label="d" type="m">sal</rhyme>,</l>
        <l id="s14:l8" met="4" type="-+">Altyt melden sijn wercken <rhyme label="d" type="m" corresp="#s14:l7">al</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
