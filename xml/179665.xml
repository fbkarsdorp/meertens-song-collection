<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>179665</id>
    <date>
      <year-start>1767</year-start>
      <year-end>1767</year-end>
    </date>
    <tags/>
    <melody>O lusteloze maagd</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ô LUstelooze <rhyme label="a" type="m">Maagd</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die haar Zieltje tot slaap <rhyme label="b" type="m">verwekt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">wanneer die duystere <rhyme label="a" type="m" corresp="#s1:l1">nagt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Het aardryk <rhyme label="b" type="m" corresp="#s1:l2">overtrekt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">u Pluyme Bed <rhyme label="c" type="m">bespreid</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ach! Juffrouw wild <rhyme label="d" type="m">ontfaan</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hier kom ik voor u <rhyme label="e" type="m">deur</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Voor u slaapvenster <rhyme label="d" type="m" corresp="#s1:l6">staan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">ô Lusteloze <rhyme label="a" type="m">Ziel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Zieltje vol zoete <rhyme label="b" type="m">Min</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hoe jaagd dat jeugdig <rhyme label="a" type="m" corresp="#s2:l1">hert</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Na de gunst van zyn <rhyme label="b" type="m" corresp="#s2:l2">Vrindin</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hier leid die schoon <rhyme label="c" type="m">Godin</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die zoo door ’s Hemels <rhyme label="d" type="m">leeft</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die haar Lichaam <rhyme label="e" type="m">bemind</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Nooit aan haar Minnaar <rhyme label="d" type="m" corresp="#s2:l6">geeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Haar te <rhyme label="a" type="m">derve</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">Dat doet myn zieltje wensche tot ’er <rhyme label="b" type="m">dood</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maar na die bly <rhyme label="a" type="m" corresp="#s3:l1">ontfangst</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Om te ruste in myn zoete liefs <rhyme label="b" type="m" corresp="#s3:l2">schoot</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Die schoot die haar <rhyme label="c" type="m">bemind</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Gesloten lag een <rhyme label="d" type="m">Juffrouw</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Denk eensjes als ik <rhyme label="e" type="m">dorst</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Hoe gaarn dat ik <rhyme label="d" type="m" corresp="#s3:l6">wou</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
