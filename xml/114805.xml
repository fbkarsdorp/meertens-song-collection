    <melody>Psalm 006 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE zonden baren <rhyme label="a" type="f">plagen</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">En plagen anxtich <rhyme label="a" type="f" corresp="#s1:l1">klagen</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Den anxt verwekt de <rhyme label="b" type="m">kracht</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Om d'oorzaak af te <rhyme label="c" type="f">weeren</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Waarom de hant des <rhyme label="c" type="f" corresp="#s1:l4">Heeren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ter straf wort <rhyme label="b" type="m" corresp="#s1:l3">voortgebracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maar Heer, laat in uw <rhyme label="a" type="f">tooren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Mijn dood niet zijn <rhyme label="a" type="f" corresp="#s2:l1">gezwooren</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Al heb ik veel <rhyme label="b" type="m">misdaan</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Ghy kont mijn schult <rhyme label="c" type="f">vergeven</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">En rekken 't zwakke <rhyme label="c" type="f" corresp="#s2:l4">leven</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat digt' is aan 't <rhyme label="b" type="m" corresp="#s2:l3">vergaan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mijn lijden heeft <rhyme label="a" type="f">getuigen</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Want mijne beenen <rhyme label="a" type="f" corresp="#s3:l1">buigen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">En beven.  Heer <rhyme label="b" type="m">wanneer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Zal 't u believen <rhyme label="c" type="f">wezen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat ghy my zult <rhyme label="c" type="f" corresp="#s3:l4">genezen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dewijl ik my <rhyme label="b" type="m" corresp="#s3:l3">verneer</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt u tot my weer <rhyme label="a" type="f">wende</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En enden mijn <rhyme label="a" type="f" corresp="#s4:l1">elende</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Zoo wort uw roem <rhyme label="b" type="m">verbreit</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Wat doode zal <rhyme label="c" type="f">bewijzen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dat hy uw naam kan <rhyme label="c" type="f" corresp="#s4:l4">prijzen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Als hy begraven <rhyme label="b" type="m" corresp="#s4:l3">leit</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ik ben door droevigh <rhyme label="a" type="f">zuchten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En lastig' <rhyme label="a" type="f" corresp="#s5:l1">ongenugten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Vermoeit en <rhyme label="b" type="m">afgemat</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">De zonden die my <rhyme label="c" type="f">klemmen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Doen my mijn leger <rhyme label="c" type="f" corresp="#s5:l4">zwemmen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Als in een <rhyme label="b" type="m" corresp="#s5:l3">tranenbadt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Mijn oogen, schier <rhyme label="a" type="f">gebroken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Staan in mijn hooft <rhyme label="a" type="f" corresp="#s6:l1">gedoken</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Mijn wezen is <rhyme label="b" type="m">verout</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Dat my die rampen <rhyme label="c" type="f">raken</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Kan d'overtreders <rhyme label="c" type="f" corresp="#s6:l4">maken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Vol spot verwaant en <rhyme label="b" type="m" corresp="#s6:l3">stont</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maar daar Gods gunst komt <rhyme label="a" type="f">schijnen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Moet alle smaat <rhyme label="a" type="f" corresp="#s7:l1">verdwijnen</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Voort, Gods verachters, <rhyme label="b" type="m">voort</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Want God heeft nu mijn <rhyme label="c" type="f">reden</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Mijn tranen en <rhyme label="c" type="f" corresp="#s7:l4">gebeden</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Genadigh <rhyme label="b" type="m" corresp="#s7:l3">aangehoort</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">De genen die my <rhyme label="a" type="f">haten</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Bevinden hen <rhyme label="a" type="f" corresp="#s8:l1">verlaten</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En zijn beschaamt vol <rhyme label="b" type="m">schrik</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">God zal haar niet doen <rhyme label="c" type="f">blijven</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Maar al dien hoop <rhyme label="c" type="f" corresp="#s8:l4">verdrijven</rhyme></l>
        <l id="s8:l6" met="3" type="-+">In eenen <rhyme label="b" type="m" corresp="#s8:l3">oogenblik</rhyme>.</l>
      </lg>
    </lg>
  </text>
