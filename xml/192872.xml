  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Het zeemansleven kent geen <rhyme label="a" type="f">zorgen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die spoelt hij af in 't schuim der <rhyme label="b" type="m">zee</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Komt, jongens! drinkt dan, want reeds <rhyme label="a" type="f" corresp="#s1:l1">morgen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Vertrekken wij weer van de <rhyme label="b" type="m" corresp="#s1:l2">ree</rhyme>.</l>
        <l id="s1:l5" met="2" type="+-"><rhyme label="c" type="f">Ingeschonken</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Laat ons <rhyme label="d" type="f">drinken</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Bij het vroolijk <rhyme label="e" type="m">zeemanslied</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Laat de bekers lustig <rhyme label="d" type="f" corresp="#s1:l6">klinken</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">God verlaat den zeeman <rhyme label="e" type="m" corresp="#s1:l7">niet</rhyme></l>
        <l id="s1:l10" met="2" type="-+">Haal uit het <rhyme label="f" type="m">glas</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gescheiden van geliefde <rhyme label="a" type="f">panden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Als weemoed ons soms treuren <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sterkt ons de hoop, dat bij het <rhyme label="a" type="f" corresp="#s2:l1">landen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Het weerzien al ons leed <rhyme label="b" type="m" corresp="#s2:l2">verzoet</rhyme>.</l>
        <l id="s2:l5" met="2" type="+-"><rhyme label="c" type="f">Ingeschonken</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Laat ons <rhyme label="d" type="f">drinken</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Bij het vroolijk <rhyme label="e" type="m">zeemanslied</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Laat de bekers lustig <rhyme label="d" type="f" corresp="#s2:l6">klinken</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">God verlaat den zeeman <rhyme label="e" type="m" corresp="#s2:l7">niet</rhyme></l>
        <l id="s2:l10" met="2" type="-+">Haal uit het <rhyme label="f" type="m">glas</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In Oost en West, in Zuid en <rhyme label="a" type="f">Noorden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">In iedere streek van d' <rhyme label="b" type="m">Oceaan</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Brengt onze moed in alle <rhyme label="a" type="f" corresp="#s3:l1">oorden</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Den handel rijken schatten <rhyme label="b" type="m" corresp="#s3:l2">aan</rhyme>.</l>
        <l id="s3:l5" met="2" type="+-"><rhyme label="c" type="f">Ingeschonken</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Laat ons <rhyme label="d" type="f">drinken</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Bij het vroolijk <rhyme label="e" type="m">zeemanslied</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Laat de bekers lustig <rhyme label="d" type="f" corresp="#s3:l6">klinken</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">God verlaat den zeeman <rhyme label="e" type="m" corresp="#s3:l7">niet</rhyme></l>
        <l id="s3:l10" met="2" type="-+">Haal uit het <rhyme label="f" type="m">glas</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Moet ook den zeeman maanden <rhyme label="a" type="f">zwerven</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Op d' onbegrensde, groote <rhyme label="b" type="m">zee</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wat hij ook op den plas moet <rhyme label="a" type="f" corresp="#s4:l1">derven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Hij voert de hoop als anker <rhyme label="b" type="m" corresp="#s4:l2">mee</rhyme>.</l>
        <l id="s4:l5" met="2" type="+-"><rhyme label="c" type="f">Ingeschonken</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">Laat ons <rhyme label="d" type="f">drinken</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Bij het vroolijk <rhyme label="e" type="m">zeemanslied</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Laat de bekers lustig <rhyme label="d" type="f" corresp="#s4:l6">klinken</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">God verlaat den zeeman <rhyme label="e" type="m" corresp="#s4:l7">niet</rhyme></l>
        <l id="s4:l10" met="2" type="-+">Haal uit het <rhyme label="f" type="m">glas</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als storm ons dreigt, of woeste <rhyme label="a" type="f">klippen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">De dood ons aangrijnst in 't <rhyme label="b" type="m">verschiet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Vloeit nog de bee van onze <rhyme label="a" type="f" corresp="#s5:l1">lippen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">O God, verlaat den zeeman <rhyme label="b" type="m" corresp="#s5:l2">niet</rhyme>.</l>
        <l id="s5:l5" met="2" type="+-"><rhyme label="c" type="f">Ingeschonken</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">Laat ons <rhyme label="d" type="f">drinken</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Bij het vroolijk <rhyme label="e" type="m">zeemanslied</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Laat de bekers lustig <rhyme label="d" type="f" corresp="#s5:l6">klinken</rhyme>,</l>
        <l id="s5:l9" met="4" type="+-">God verlaat den zeeman <rhyme label="e" type="m" corresp="#s5:l7">niet</rhyme></l>
        <l id="s5:l10" met="2" type="-+">Haal uit het <rhyme label="f" type="m">glas</rhyme>.</l>
      </lg>
    </lg>
  </text>
