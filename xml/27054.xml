<song>
  <meta>
    <id>27054</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1576</year-end>
    </date>
    <tags>
      <tag standard-name="geuzenlied" translation="Geuzen song">geuzenlied</tag>
      <tag standard-name="klaaglied" translation="lamentation">klaaglied</tag>
