    <melody>Lofzang van Maria</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hier leert mijn jesus <rhyme label="a" type="m">mij</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat ik standvastig <rhyme label="a" type="m" corresp="#s1:l1">zij</rhyme></l>
        <l id="s1:l3" met="3" type="-+">In d'eed aen Hem <rhyme label="b" type="f">gezworen</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Gintsch, zegt Hij, blinkt de <rhyme label="c" type="m">kroon</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ten zalig <rhyme label="c" type="m" corresp="#s1:l4">eereloon</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">U, voor die trouw, <rhyme label="b" type="f" corresp="#s1:l3">beschoren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dan 'k eisch, dat gij, met <rhyme label="a" type="m">moed</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Aen uwen plicht <rhyme label="a" type="m" corresp="#s2:l1">voldoet</rhyme>: -</l>
        <l id="s2:l3" met="3" type="-+">Wildt gij Mijn dienst <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Mij, die u heil <rhyme label="c" type="m">verwierf</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die, voor uw misdrijf, <rhyme label="c" type="m" corresp="#s2:l4">stierf</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dan moet ge uw zelven <rhyme label="b" type="f" corresp="#s2:l3">haten</rhyme>. -</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Neen, jesus! neen; - ô <rhyme label="a" type="m">neen</rhyme>! -</l>
        <l id="s3:l2" met="3" type="-+">Wij volgen Uwe <rhyme label="a" type="m" corresp="#s3:l1">schreên</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Dat heil, die vreugd, dat <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat ons Uw Kruisdood <rhyme label="c" type="m">biedt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Kan ons de weereld <rhyme label="c" type="m" corresp="#s3:l4">niet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Met al haer schatten, <rhyme label="b" type="f" corresp="#s3:l3">geven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ons hart door de <rhyme label="a" type="m">ijdelheid</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Helaes! te zeer <rhyme label="a" type="m" corresp="#s4:l1">verleid</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wil vaek Uw' dienst <rhyme label="b" type="f">versmaden</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Maer wroeging, angst en <rhyme label="c" type="m">schrik</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Is, ieder <rhyme label="c" type="m" corresp="#s4:l4">oogenblik</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">'t Gevolg dier <rhyme label="b" type="f" corresp="#s4:l3">euveldaden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ach, dat dit hart, ô <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s5:l2" met="3" type="-+">Uw naem, Uw liefde, Uwe <rhyme label="a" type="m" corresp="#s5:l1">eer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Niet langer meer <rhyme label="b" type="f">versmade</rhyme>! -</l>
        <l id="s5:l4" met="3" type="-+">Gij hebt, voor al die <rhyme label="c" type="m">schuld</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Den eisch der Wet <rhyme label="c" type="m" corresp="#s5:l4">vervuld</rhyme>: -</l>
        <l id="s5:l6" met="3" type="-+">ô Rijkdom van <rhyme label="b" type="f" corresp="#s5:l3">genade</rhyme>! -</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Geen vrees voor <rhyme label="a" type="m">menschenhaet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Geen zondige <rhyme label="a" type="m" corresp="#s6:l1">eigenbaet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Doe me in den strijd <rhyme label="b" type="f">vertzagen</rhyme>!</l>
        <l id="s6:l4" met="3" type="-+">Versterk mijn trouw, mijn <rhyme label="c" type="m">moed</rhyme>!</l>
        <l id="s6:l5" met="3" type="-+">'k Berust, hoe 't onheil <rhyme label="c" type="m" corresp="#s6:l4">woed'</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dan in Gods <rhyme label="b" type="f" corresp="#s6:l3">welbehagen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">In 't nijpendst <rhyme label="a" type="m">zielsverdriet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Verlaet mij jesus <rhyme label="a" type="m" corresp="#s7:l1">niet</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Neen; 'k blijf zijn hulp <rhyme label="b" type="f">verbeiden</rhyme>. -</l>
        <l id="s7:l4" met="3" type="-+">Geen angst van Dood of <rhyme label="c" type="m">Hel</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">'t Gaet vast, <rhyme label="c" type="m" corresp="#s7:l4">Emanuël</rhyme>!</l>
        <l id="s7:l6" met="3" type="-+">Zal me immer van U <rhyme label="b" type="f" corresp="#s7:l3">scheiden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ja, wen, in 't uiterst <rhyme label="a" type="m">uur</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">De krachten der <rhyme label="a" type="m" corresp="#s8:l1">natuur</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">ô jesus! mij <rhyme label="b" type="f">begeven</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Triömf! dan juich ik, <rhyme label="c" type="m">ja</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Om 't heil van <rhyme label="c" type="m" corresp="#s8:l4">Golgotha</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Nog in een beter <rhyme label="b" type="f" corresp="#s8:l3">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
