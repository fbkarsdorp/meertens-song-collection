  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WEl geluckigh zijn de <rhyme label="a" type="f">menschen</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Die na <rhyme label="a" type="f" corresp="#s1:l1">wenschen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Hier te samen zijn <rhyme label="b" type="m">gepaert</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Even als ons' <rhyme label="c" type="f">Bruydegomme</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Nu <rhyme label="c" type="f" corresp="#s1:l4">volkomme</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Met zijn Bruydtje is <rhyme label="b" type="m" corresp="#s1:l3">vergaert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want by beyden is <rhyme label="a" type="f">genoegen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Over 't <rhyme label="a" type="f" corresp="#s2:l1">voegen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Harer handen, door de <rhyme label="b" type="m">trouw</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">'k Wensch dat nimmermeer haer <rhyme label="c" type="f">harten</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Nieuwe <rhyme label="c" type="f" corresp="#s2:l4">smarten</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Overkomme door <rhyme label="b" type="m" corresp="#s2:l3">berouw</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maer soo vast als nu haer <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Met <rhyme label="a" type="f" corresp="#s3:l1">Echts-banden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Zijn gebonden, door haer <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat soo mogen sijn <rhyme label="c" type="f">gevonden</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Vast <rhyme label="c" type="f" corresp="#s3:l4">gebonden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Haer twee herten in een <rhyme label="b" type="m" corresp="#s3:l3">sin</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dan sal wiss'lijck liefd' en <rhyme label="a" type="f">vrede</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Eendracht <rhyme label="a" type="f" corresp="#s4:l1">mede</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">By haer stadigh staen ten <rhyme label="b" type="m">toon</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Twist en tweedraght, en <rhyme label="c" type="f">onruste</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Noch <rhyme label="c" type="f" corresp="#s4:l4">onluste</rhyme></l>
        <l id="s4:l6" met="4" type="+-">By haer blijven sal ter <rhyme label="b" type="m" corresp="#s4:l3">woon</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Hier toe wensch ick: Godes <rhyme label="a" type="f">zegen</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Als een <rhyme label="a" type="f" corresp="#s5:l1">regen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Vruchtbaer op haer <rhyme label="b" type="m">neder-dael</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En met lust, rust, en <rhyme label="c" type="f">vermaecken</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Al  haer <rhyme label="c" type="f" corresp="#s5:l4">saecken</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Door sijn goedicheyt <rhyme label="b" type="m" corresp="#s5:l3">bestrael</rhyme>.</l>
      </lg>
    </lg>
  </text>
