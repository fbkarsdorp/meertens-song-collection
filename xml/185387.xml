  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghy Christelijcke lieve <rhyme label="a" type="m">jeucht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Cleyn spruytjes, jonck van <rhyme label="b" type="f">jaren</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Laet varen // alle ydel <rhyme label="a" type="m" corresp="#s1:l1">vreucht</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Verheucht // in <rhyme label="a" type="m" corresp="#s1:l1">deucht</rhyme></l>
        <l id="s1:l5" met="2" type="-+">So veel ghy <rhyme label="a" type="m" corresp="#s1:l1">meucht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En wilt u Ziel <rhyme label="b" type="f" corresp="#s1:l2">bewaren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Bewaert u Ziel en sorge <rhyme label="a" type="m">draeght</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat ghy niet wort <rhyme label="b" type="f">bevanghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Van slangen list die menich <rhyme label="a" type="m" corresp="#s2:l1">plaeght</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Maer jaeght // en <rhyme label="a" type="m" corresp="#s2:l1">vraeght</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Wat Godt <rhyme label="a" type="m" corresp="#s2:l1">behaeght</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Beveelt hem al u <rhyme label="b" type="f" corresp="#s2:l2">ganghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Let op u ganck, en zijt geen <rhyme label="a" type="m">kint</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Al in ‘t verstant <rhyme label="b" type="f">onvroedigh</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Maer spoedigh // soeckt en <rhyme label="a" type="m" corresp="#s3:l1">ondervint</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Hoe blint // sy <rhyme label="a" type="m" corresp="#s3:l1">mint</rhyme> //</l>
        <l id="s3:l5" met="2" type="-+">en heeft <rhyme label="a" type="m" corresp="#s3:l1">ghesint</rhyme></l>
        <l id="s3:l6" met="3" type="-+">De wel-lust <rhyme label="b" type="f" corresp="#s3:l2">wanckel-moedigh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wel-lust bedrieght als sy <rhyme label="a" type="m">verblijt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">‘t Iolijt // is niet <rhyme label="b" type="f">ghedurich</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Doleurigh // haren dienaer <rhyme label="a" type="m" corresp="#s4:l1">krijt</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Als tijt // is <rhyme label="a" type="m" corresp="#s4:l1">quijt</rhyme> //</l>
        <l id="s4:l5" met="2" type="-+">dan heeft hy <rhyme label="a" type="m" corresp="#s4:l1">strijt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">In sijn gemoet seer <rhyme label="b" type="f" corresp="#s4:l2">treurich</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En daer ‘t gemoet so knaegt en <rhyme label="a" type="m">wroet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Onsoet // is sulcken <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Bedreven // en vol anghstigh <rhyme label="a" type="m" corresp="#s5:l1">bloet</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Maer doet // ghy <rhyme label="a" type="m" corresp="#s5:l1">goet</rhyme> //</l>
        <l id="s5:l5" met="2" type="-+">in u <rhyme label="a" type="m" corresp="#s5:l1">gemoet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Wert hoogen troost <rhyme label="b" type="f" corresp="#s5:l2">gegeven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wie desen troost is toe <rhyme label="a" type="m">ghevloeyt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Besproeyt // van ‘s Heeren <rhyme label="b" type="f">zeghen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ter degen // hy in deughden <rhyme label="a" type="m" corresp="#s6:l1">blpoeyt</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Hy roeyt // en <rhyme label="a" type="m" corresp="#s6:l1">snoeyt</rhyme> //</l>
        <l id="s6:l5" met="2" type="-+">al watter <rhyme label="a" type="m" corresp="#s6:l1">groeyt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Door ‘t vleysschelijck <rhyme label="b" type="f" corresp="#s6:l2">gheneghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Gheneghentheyt is den <rhyme label="a" type="m">aenvanck</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Des sonds, dus wie het <rhyme label="b" type="f">quade</rhyme></l>
        <l id="s7:l3" met="4" type="+-">heeft stadelijck in sijn <rhyme label="a" type="m" corresp="#s7:l1">bedwanck</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Lofsanck // en <rhyme label="a" type="m" corresp="#s7:l1">danck</rhyme> //</l>
        <l id="s7:l5" met="2" type="-+">van die <rhyme label="a" type="m" corresp="#s7:l1">ontfanck</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Bewijs hy vroegh en <rhyme label="b" type="f" corresp="#s7:l2">spade</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Neemt aen in danck dit cleyn <rhyme label="a" type="m">gedicht</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zijt den Leeraer der <rhyme label="b" type="f">scholen</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Bevolen // die u <rhyme label="a" type="m" corresp="#s8:l1">onder-ricjt</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Hy sticht // <rhyme label="a" type="m" corresp="#s8:l1">verlicht</rhyme> //</l>
        <l id="s8:l5" met="2" type="-+">en geeft <rhyme label="a" type="m" corresp="#s8:l1">ghesicht</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Om nimmermeer te <rhyme label="b" type="f" corresp="#s8:l2">dolen</rhyme>.</l>
      </lg>
    </lg>
  </text>
