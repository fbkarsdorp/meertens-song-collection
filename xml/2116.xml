  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs het Hemels <rhyme label="a" type="m">Sterren-licht</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Met syn' vlickerende <rhyme label="b" type="f">stralen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">In den gouden nacht quam <rhyme label="b" type="f" corresp="#s1:l2">dalen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Op myn duyster <rhyme label="a" type="m" corresp="#s1:l1">aen-ghesicht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Als den dagh nu was <rhyme label="c" type="f">verdwenen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Als de aerd' in 't duyster <rhyme label="d" type="m">lagh</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Wirt myn in nigh oog <rhyme label="c" type="f" corresp="#s1:l5">beschenen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Klaerder als met eenen <rhyme label="d" type="m" corresp="#s1:l6">dagh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">O wat Goddelycken <rhyme label="a" type="m">troost</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Quam my in het hert te <rhyme label="b" type="f">sincken</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als ick sagh de Sterren <rhyme label="b" type="f" corresp="#s2:l2">blincken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">'k Sagh dan West, en dan weèr <rhyme label="a" type="m" corresp="#s2:l1">Oost</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Ick bedroefde m'in 't verbly <rhyme label="c" type="f">den</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Ick versuchte van 't <rhyme label="d" type="m">playsier</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Ick en kost de vlam niet <rhyme label="c" type="f" corresp="#s2:l5">lyden</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Van dat Hemels <rhyme label="d" type="m" corresp="#s2:l6">Minne-vier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Soo langh als ick diën <rhyme label="a" type="m">brandt</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Kost in my nen boesem <rhyme label="b" type="f">sluyten</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Soo en sprack ick niet van <rhyme label="b" type="f" corresp="#s3:l2">buyten</rhyme></l>
        <l id="s3:l4" met="4" type="+-">'k Sprack alleen tot myn <rhyme label="a" type="m" corresp="#s3:l1">verstandt</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Maer wie kost oyt langh <rhyme label="c" type="f">beminnen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Ende sonder spreken <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Doen borst uyt den brandt van <rhyme label="c" type="f" corresp="#s3:l5">binnen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En het vier gingh seffens <rhyme label="d" type="m" corresp="#s3:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'k Sagh de Sterren sterlinghs <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En ick riep met groot <rhyme label="b" type="f">verlanghen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Wat houd' my de aerd' <rhyme label="b" type="f" corresp="#s4:l2">gevangen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Laet my aerde, laet my <rhyme label="a" type="m" corresp="#s4:l1">gaen</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Ach! waer 't dat ick waer <rhyme label="c" type="f">ontbonden</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Van het vleeseh dat my <rhyme label="d" type="m">beswaert</rhyme>;</l>
        <l id="s4:l7" met="4" type="+-">Waer myn vleesch in 't vier <rhyme label="c" type="f" corresp="#s4:l5">verslonden</rhyme></l>
        <l id="s4:l8" met="4" type="+-">'t Ander vier vloogh stracks van <rhyme label="d" type="m" corresp="#s4:l6">d'aerdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Maer soo langh als mynen <rhyme label="a" type="m">gheest</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Onder 't pack van 't vleesch moet <rhyme label="b" type="f">suchten</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En moet derven de <rhyme label="b" type="f" corresp="#s5:l2">ghenuchten</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Van des Hemels <rhyme label="a" type="m" corresp="#s5:l1">Bruyloft-feest</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Roep ick hoe blindt zyn de <rhyme label="c" type="f">menschen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Die aen-sien dit Hemel <rhyme label="d" type="m">ryck</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">En als blinde Mollen <rhyme label="c" type="f" corresp="#s5:l5">wenschen</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Naer een Ryc van aerd', en <rhyme label="d" type="m" corresp="#s5:l6">slyc</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als ick boven een <rhyme label="a" type="m">Revier</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Sien van wyn en suycker <rhyme label="b" type="f">schieten</rhyme></l>
        <l id="s6:l3" met="4" type="+-">En sien Beken tranen <rhyme label="b" type="f" corresp="#s6:l2">vlieten</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Op het Aerde-ryck <rhyme label="a" type="m" corresp="#s6:l1">al-hier</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Roep ick hoe blindt zyn de <rhyme label="c" type="f">menschen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Die de Beeck sien van <rhyme label="d" type="m">wellust</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">En naer dorre bly schap <rhyme label="c" type="f" corresp="#s6:l5">wenschen</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Die noch dorst, noch lust en <rhyme label="d" type="m" corresp="#s6:l6">blust</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Als ick boven hoor den <rhyme label="a" type="m">sangh</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Van de Seraphinsche <rhyme label="b" type="f">Chooren</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En als ick op d'aerd' moet <rhyme label="b" type="f" corresp="#s7:l2">hooren</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Droevigh suchten dagen <rhyme label="a" type="m" corresp="#s7:l1">lang</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Roep ick hoe blindt zyn de <rhyme label="c" type="f">menschen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Die aen-sien dit <rhyme label="d" type="m">Hemel-ryck</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">En als blinde Mollen <rhyme label="c" type="f" corresp="#s7:l5">venschen</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Naer de vreught van 't <rhyme label="d" type="m" corresp="#s7:l6">Aerderyck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ghy ô Hemel <rhyme label="a" type="m">sultvoordt-aen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Altydt zyn in myn' <rhyme label="b" type="f">ghepeysen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Tot dat ick eens self magh <rhyme label="b" type="f" corresp="#s8:l2">reysen</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Daer nu myn' ghepeysen <rhyme label="a" type="m" corresp="#s8:l1">gaen</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">O schoon Son, ô noyt <rhyme label="c" type="f">vol-presen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Hemel-sterren, ô <rhyme label="d" type="m">wanneêr</rhyme></l>
        <l id="s8:l7" met="4" type="+-">Sal ick boven u eens <rhyme label="c" type="f" corresp="#s8:l5">wesen</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Ende onder mynen <rhyme label="d" type="m" corresp="#s8:l6">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
