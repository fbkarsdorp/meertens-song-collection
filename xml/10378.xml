  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Laet ons nu eens vrolyck <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Vrolijck sijn, vrolijck <rhyme label="a" type="m" corresp="#s1:l1">sijn</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Laet ons nu eens vrolijck <rhyme label="a" type="m" corresp="#s1:l1">sijn</rhyme></l>
        <l id="s1:l4" met="1" type="-+">In <rhyme label="b" type="m">deught</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Vrolijck wesen by de <rhyme label="c" type="m">wijn</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">By de wyn, by de <rhyme label="c" type="m" corresp="#s1:l5">wyn</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Vrolyck wesen, want de <rhyme label="c" type="m" corresp="#s1:l5">wyn</rhyme></l>
        <l id="s1:l8" met="1" type="-+"><rhyme label="b" type="m" corresp="#s1:l4">Verheught</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'k Zet het glaesjen aen myn <rhyme label="a" type="m">mondt</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Aen myn mondt, aen myn <rhyme label="a" type="m" corresp="#s2:l1">mont</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">'k Zet het glaesjen aen myn <rhyme label="a" type="m" corresp="#s2:l1">mondt</rhyme>,</l>
        <l id="s2:l4" met="1" type="-+"><rhyme label="b" type="m">Avous</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">En 't moet uyt tot op de <rhyme label="c" type="m">grondt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Op de grondt, op de <rhyme label="c" type="m" corresp="#s2:l5">grondt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En 't moet uyt tot op de <rhyme label="c" type="m" corresp="#s2:l5">grondt</rhyme></l>
        <l id="s2:l8" met="1" type="-+">Gaer <rhyme label="b" type="m" corresp="#s2:l4">ouws</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'k Zet myn lippen aen de <rhyme label="a" type="m">kroes</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Aan de kroes, aende <rhyme label="a" type="m" corresp="#s3:l1">kroes</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'k Zet myn lippen aende <rhyme label="a" type="m" corresp="#s3:l1">kroes</rhyme>,</l>
        <l id="s3:l4" met="1" type="-+">En <rhyme label="b" type="m">poy</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Hey! Monseur, dat is <rhyme label="c" type="m">Avous</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Is Avous, is <rhyme label="c" type="m" corresp="#s3:l5">Avous</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Het Monseur! dat is <rhyme label="c" type="m" corresp="#s3:l5">avouz</rhyme>,</l>
        <l id="s3:l8" met="1" type="-+"><rhyme label="b" type="m" corresp="#s3:l4">Amoy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dat was met een koelen <rhyme label="a" type="m">sin</rhyme>.</l>
        <l id="s4:l2" met="4" type="+-">Koele sin, koele <rhyme label="a" type="m" corresp="#s4:l1">sin</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dat was met een koele <rhyme label="a" type="m" corresp="#s4:l1">sin</rhyme></l>
        <l id="s4:l4" met="1" type="-+">Gaer <rhyme label="b" type="m">ouws</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Schynckter lustigh weer wat <rhyme label="c" type="m">in</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Weer wat in, weer wat <rhyme label="c" type="m" corresp="#s4:l5">in</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Schynckter lustigh weer wat <rhyme label="c" type="m" corresp="#s4:l5">in</rhyme></l>
        <l id="s4:l8" met="1" type="-+"><rhyme label="b" type="m" corresp="#s4:l4">Avous</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Houw daer, buurman! nou moet <rhyme label="a" type="m">ghy</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Nou moet ghy, nou moet ghy, Levert het <rhyme label="a" type="m" corresp="#s5:l1">over</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Hou daer buurman, nou moet <rhyme label="a" type="m" corresp="#s5:l1">ghy</rhyme></l>
        <l id="s5:l4" met="1" type="-+">De <rhyme label="b" type="m">kroesl</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Laet ons spelen schjocke <rhyme label="c" type="m">dy</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Schjocke dy, Schjocke <rhyme label="c" type="m" corresp="#s5:l5">dy</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Laet ons spelen schjocke <rhyme label="c" type="m" corresp="#s5:l5">dy</rhyme>,</l>
        <l id="s5:l8" met="1" type="-+"><rhyme label="b" type="m" corresp="#s5:l4">Avous</rhyme>.</l>
      </lg>
    </lg>
  </text>
