    <melody>Adieu mijn vreugde adieu solaas</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hadyeu natuer, hadyeu <rhyme label="a" type="m">solaes</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ic wil my gaen <rhyme label="b" type="f">bekeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Al heb ic langhe gheweest dus <rhyme label="a" type="m" corresp="#s1:l1">dwaes</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ic wil noch sterven <rhyme label="b" type="f" corresp="#s1:l2">leren</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Hadyeu natuer, hadyeu <rhyme label="c" type="m">solaes</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ic wil my gaen <rhyme label="d" type="f">bekeren</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Al heb ic langhe gheweest dus <rhyme label="c" type="m" corresp="#s1:l5">dwaes</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ic wil noch sterven <rhyme label="d" type="f" corresp="#s1:l6">leren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ic minde die warelt ende haer <rhyme label="a" type="m">jolijt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daer by nam ic groot <rhyme label="b" type="f">scade</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Si moet vergaen in corten <rhyme label="a" type="m" corresp="#s2:l1">tijt</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Mijn God, ic bid <rhyme label="b" type="f" corresp="#s2:l2">ghenade</rhyme>!</l>
        <l id="s2:l5" met="4" type="-+">Hadyeu natuer, hadyeu <rhyme label="c" type="m">solaes</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ic wil my gaen <rhyme label="d" type="f">bekeren</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Al heb ic langhe gheweest dus <rhyme label="c" type="m" corresp="#s2:l5">dwaes</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ic wil noch sterven <rhyme label="d" type="f" corresp="#s2:l6">leren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Der warelt minne en is niet <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Men en mach daer niet of <rhyme label="b" type="f">erven</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Ic willen in mijnre harten <rhyme label="a" type="m" corresp="#s3:l1">doen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die niet en mach <rhyme label="b" type="f" corresp="#s3:l2">versterven</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Hadyeu natuer, hadyeu <rhyme label="c" type="m">solaes</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ic wil my gaen <rhyme label="d" type="f">bekeren</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Al heb ic langhe gheweest dus <rhyme label="c" type="m" corresp="#s3:l5">dwaes</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Ic wil noch sterven <rhyme label="d" type="f" corresp="#s3:l6">leren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">In deser werelt en is geen <rhyme label="a" type="m">troest</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Het is al cost <rhyme label="b" type="f">verloren</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Wanneer ic God van binnen <rhyme label="a" type="m" corresp="#s4:l1">heb</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ic en coer daer geen dinc <rhyme label="b" type="f" corresp="#s4:l2">vore</rhyme>!</l>
        <l id="s4:l5" met="4" type="-+">Hadyeu natuer, hadyeu <rhyme label="c" type="m">solaes</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ic wil my gaen <rhyme label="d" type="f">bekeren</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Al heb ic langhe gheweest dus <rhyme label="c" type="m" corresp="#s4:l5">dwaes</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Ic wil noch sterven <rhyme label="d" type="f" corresp="#s4:l6">leren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och, veel bedrieghens vijnd ic in <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat hout mijn hart in <rhyme label="b" type="f">sorghen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ende mijn siel in groten <rhyme label="a" type="m" corresp="#s5:l1">vaer</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Maria wilt my <rhyme label="b" type="f" corresp="#s5:l2">verborghen</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Hadyeu natuer, hadyeu <rhyme label="c" type="m">solaes</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ic wil my gaen <rhyme label="d" type="f">bekeren</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Al heb ic langhe gheweest dus <rhyme label="c" type="m" corresp="#s5:l5">dwaes</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Ic wil noch sterven <rhyme label="d" type="f" corresp="#s5:l6">leren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Och, waer ic rijde of waer <rhyme label="a" type="m">icvaer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ic sie die luden <rhyme label="b" type="f">sterven</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Ten baet waer heerscap of grote <rhyme label="a" type="m" corresp="#s6:l1">goet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Men moetet al hier <rhyme label="b" type="f" corresp="#s6:l2">derven</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Hadyeu natuer, hadyeu <rhyme label="c" type="m">solaes</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ic wil my gaen <rhyme label="d" type="f">bekeren</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Al heb ic langhe gheweest dus <rhyme label="c" type="m" corresp="#s6:l5">dwaes</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Ic wil noch sterven <rhyme label="d" type="f" corresp="#s6:l6">leren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och, edel mensche, nu hout di <rhyme label="a" type="m">vri</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ende stant daerna met <rhyme label="b" type="f">sinne</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Het toent die menich scoen <rhyme label="a" type="m" corresp="#s7:l1">ghelaet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Tis vrienscap sonder <rhyme label="b" type="f" corresp="#s7:l2">minne</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Hadyeu natuer, hadyeu <rhyme label="c" type="m">solaes</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Ic wil my gaen <rhyme label="d" type="f">bekeren</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Al heb ic langhe gheweest dus <rhyme label="c" type="m" corresp="#s7:l5">dwaes</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Ic wil noch sterven <rhyme label="d" type="f" corresp="#s7:l6">leren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Te maten te spreken, dat is <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Ende oeck een weynich <rhyme label="b" type="f">lachen</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Bedwinct dijn sin ende dinen <rhyme label="a" type="m" corresp="#s8:l1">moet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hoet di voer quaet te <rhyme label="b" type="f" corresp="#s8:l2">clappen</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Hadyeu natuer, hadyeu <rhyme label="c" type="m">solaes</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ic wil my gaen <rhyme label="d" type="f">bekeren</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Al heb ic langhe gheweest dus <rhyme label="c" type="m" corresp="#s8:l5">dwaes</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Ic wil noch sterven <rhyme label="d" type="f" corresp="#s8:l6">leren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
