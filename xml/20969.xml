  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Adams kindt! gedachtich <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat gh'eens sult moeten <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">En dit leven <rhyme label="b" type="f" corresp="#s1:l2">derven</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Sult in korten <rhyme label="a" type="m" corresp="#s1:l1">tijdt</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Des wilt u <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Beter schicken <rhyme label="d" type="m">gaen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wilt u tot deught <rhyme label="c" type="f" corresp="#s1:l5">begeven</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Na dit kort <rhyme label="d" type="m" corresp="#s1:l6">vermaen</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">'t Welck gh'in dit Licht vindt <rhyme label="d" type="m" corresp="#s1:l6">staen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wacht u van haer, wacht u van <rhyme label="a" type="m">nijdt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die uwe ziel <rhyme label="b" type="f">doorwonden</rhyme>;</l>
        <l id="s2:l3" met="3" type="+-">Maeckt doch alle <rhyme label="b" type="f" corresp="#s2:l2">sonden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">U ten eersten <rhyme label="a" type="m" corresp="#s2:l1">quijt</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Cupidoos <rhyme label="c" type="f">minne</rhyme></l>
        <l id="s2:l6" met="3" type="+-">T'allen tijden <rhyme label="d" type="m">haet</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Laet nimmermeer uw' <rhyme label="c" type="f" corresp="#s2:l5">sinnen</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Staen op eenich <rhyme label="d" type="m" corresp="#s2:l6">quaedt</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Maer alle quaede <rhyme label="d" type="m" corresp="#s2:l6">verlaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Bemindt uw' Godt, bemindt de <rhyme label="a" type="m">deught</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van uwe jonge <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Wilt uw' Godt <rhyme label="b" type="f" corresp="#s3:l2">behagen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Van uw' jonge <rhyme label="a" type="m" corresp="#s3:l1">jeught</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Wilt neerstich <rhyme label="c" type="f">letten</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Tot uw's levens <rhyme label="d" type="m">endt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Op Godes heyl'ge <rhyme label="c" type="f" corresp="#s3:l5">Wetten</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Nimmer die en <rhyme label="d" type="m" corresp="#s3:l6">schendt</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Tot Godt uw' oogen <rhyme label="d" type="m" corresp="#s3:l6">wendt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">All' 't geen gebiedt de Heyl'ghe <rhyme label="a" type="m">Kerck</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wilt neerstich <rhyme label="b" type="f">onderhouwen</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Laet u noyt <rhyme label="b" type="f" corresp="#s4:l2">berouwen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Dit Godtvreesend' <rhyme label="a" type="m" corresp="#s4:l1">werck</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Wilt opspraeck <rhyme label="c" type="f">mijden</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Heylich altijdt <rhyme label="d" type="m">leeft</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Wilt u in Godt <rhyme label="c" type="f" corresp="#s4:l5">verblijden</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Godt de glory <rhyme label="d" type="m" corresp="#s4:l6">geeft</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Toont u aen hem <rhyme label="d" type="m" corresp="#s4:l6">beleeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dan sal 't geschie'n, dat ghy van <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sult salighlijck <rhyme label="b" type="f">verscheyden</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Na des Hemels <rhyme label="b" type="f" corresp="#s5:l2">weyden</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">In dat groot <rhyme label="a" type="m" corresp="#s5:l1">playsier</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">O Godt <rhyme label="c" type="f">Almachtich</rhyme>!</l>
        <l id="s5:l6" met="3" type="+-">Zielen <rhyme label="d" type="m">Medicijn</rhyme>!</l>
        <l id="s5:l7" met="3" type="-+">Ons' kranckheyt zijt <rhyme label="c" type="f" corresp="#s5:l5">gedachtich</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Laet ons by u <rhyme label="d" type="m" corresp="#s5:l6">zijn</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Vrijdt ons van d'helsche <rhyme label="d" type="m" corresp="#s5:l6">pijn</rhyme>/</l>
      </lg>
    </lg>
  </text>
