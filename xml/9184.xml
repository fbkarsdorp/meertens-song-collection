    <tags/>
    <melody>De lustelijke mei is nu in de tijd</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOort Bevallijcke <rhyme label="a" type="m">Harderin</rhyme></l>
        <l id="s1:l2" met="3" type="-+">U Harder inde <rhyme label="b" type="f">Weyden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Fluyten de ghetrouwe <rhyme label="a" type="m" corresp="#s1:l1">Min</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die wy onder ons <rhyme label="b" type="f" corresp="#s1:l2">beyden</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Hebben ghepleecht wel seven <rhyme label="c" type="m">Jaer</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Eer dat het iemant wert <rhyme label="c" type="m" corresp="#s1:l5">ghewaer</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Maer wy zijn nu van malcander <rhyme label="b" type="f" corresp="#s1:l2">gescheyden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick sal u verlaeten <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Mijn trouwe <rhyme label="b" type="f">Harderinne</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ay comt hoort my hier in het <rhyme label="a" type="m" corresp="#s2:l1">Riet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Melde ons soete <rhyme label="b" type="f" corresp="#s2:l2">Minne</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En 'tgheen ick vaeck wel heb <rhyme label="c" type="m">ghedaen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Om van u schoonste troost <rhyme label="c" type="m" corresp="#s2:l5">t'ontfaen</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Wanneer ghy my stelde gants uyt u <rhyme label="b" type="f" corresp="#s2:l2">sinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hier over Amsterdam aen <rhyme label="a" type="m">'tY</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sal ick fluyten ons <rhyme label="b" type="f">kuertjes</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ons boertjes, onse <rhyme label="a" type="m" corresp="#s3:l1">vryery</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En onse <rhyme label="b" type="f" corresp="#s3:l2">avontuertjes</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En al het gheen wy in het <rhyme label="c" type="m">Velt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Malcand'ren hebben vaeck <rhyme label="c" type="m" corresp="#s3:l5">vertelt</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Van ons schallicke snappende <rhyme label="b" type="f" corresp="#s3:l2">ghebuertjes</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wat hebben sy wel al uyt <rhyme label="a" type="m">spijt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van u en my gaen <rhyme label="b" type="f">clappen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wat hebben sy uyt haet en <rhyme label="a" type="m" corresp="#s4:l1">nijt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van ons weten te <rhyme label="b" type="f" corresp="#s4:l2">snappen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Aen die Harders die haer <rhyme label="c" type="m">Vee</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Gaen hier daghelijcx weyden <rhyme label="c" type="m" corresp="#s4:l5">mee</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Om ons int minnen lief te <rhyme label="b" type="f" corresp="#s4:l2">betrappen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doch waerste stelt u Hart in <rhyme label="a" type="m">rust</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ick hoop in weynich <rhyme label="b" type="f">daghen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Te doen al wat u Harte <rhyme label="a" type="m" corresp="#s5:l1">lust</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ay wilt doch niet meer <rhyme label="b" type="f" corresp="#s5:l2">claghen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En denckt hebben sy ons <rhyme label="c" type="m">ghesien</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Lief koosen, datmen heeft sien <rhyme label="c" type="m" corresp="#s5:l5">schien</rhyme></l>
        <l id="s5:l7" met="4" type="-+">sulxc van die ons doen, uyt nijt <rhyme label="b" type="f" corresp="#s5:l2">overdraghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
