  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Jesus een seer groote <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Tot hem aenkoomen, wierdt <rhyme label="a" type="m" corresp="#s1:l1">gewaer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hy is op eenen Bergh <rhyme label="b" type="m">gegaen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Heeft d'heele nacht 't Gebedt <rhyme label="b" type="m" corresp="#s1:l3">gedaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Des morgens uyt sijn <rhyme label="a" type="m">Jongeren</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Verkoor hy twaelf <rhyme label="a" type="m" corresp="#s2:l1">Apostolen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die welk hy by hem houden <rhyme label="b" type="m">wouw</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En om te preeken senden <rhyme label="b" type="m" corresp="#s2:l3">souw</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De eerste Simon Petrus <rhyme label="a" type="m">was</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En sijnen Broeder <rhyme label="a" type="m" corresp="#s3:l1">Andreas</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Johan en Jacob <rhyme label="b" type="m">Sebede'</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Philippus, en <rhyme label="b" type="m" corresp="#s3:l3">Bartholome'</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Thomas, Thadde', Jacob <rhyme label="a" type="m">Alphe'</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Matheus, Simon <rhyme label="a" type="m" corresp="#s4:l1">Canane'</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En Iudas van <rhyme label="b" type="m">Iskarioot</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die hem gelevert heeft ter <rhyme label="b" type="m" corresp="#s4:l3">doot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dus is hy van den Bergh <rhyme label="a" type="m">gegaen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En in de vlakte koomen <rhyme label="a" type="m" corresp="#s5:l1">staen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En hy geneesden van haer <rhyme label="b" type="m">quael</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die tot hem quamen al te <rhyme label="b" type="m" corresp="#s5:l3">mael</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Van hem gingh uyt een wonder <rhyme label="a" type="m">kraght</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dus yder hem te raken <rhyme label="a" type="m" corresp="#s6:l1">traght</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Hy weetende haer goedt <rhyme label="b" type="m">begeer</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Heeft haer gegeeven schoone <rhyme label="b" type="m" corresp="#s6:l3">Leer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Iesus, uwe Godlijk <rhyme label="a" type="m">Woordt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Dat hebben uyt uw' mondt <rhyme label="a" type="m" corresp="#s7:l1">gehoort</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Uw' lief Apostolen; sy 't <rhyme label="b" type="m">weer</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Aen ander gaven tot haer <rhyme label="b" type="m" corresp="#s7:l3">Leer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dees hebben 't ook van handt te <rhyme label="a" type="m">hant</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Door d'heele Weerelt <rhyme label="a" type="m" corresp="#s8:l1">voort-geplant</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Door heyl'ge Mannen, door wien <rhyme label="b" type="m">wy</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Tot uwe kennis koomen <rhyme label="b" type="m" corresp="#s8:l3">bly</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Daer over danken wy u <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En bidden dat gy meer en <rhyme label="a" type="m" corresp="#s9:l1">meer</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Het reght Geloof in ons <rhyme label="b" type="m">versterkt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En door uw' grati 't leeven <rhyme label="b" type="m" corresp="#s9:l3">werkt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
