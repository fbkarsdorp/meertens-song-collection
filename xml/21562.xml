    <melody>Een ridder en een meisje jong</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VVildy wesen een oorloochs <rhyme label="a" type="m">man</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Een ridder een kamper des <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">So laet v teeckenen doet wapenen <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Strijden en vechten moet ghy <rhyme label="b" type="f" corresp="#s1:l2">leeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want wy en hebben hier gheenen <rhyme label="a" type="m">strijt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Teghen ons vleesch en bloet <rhyme label="b" type="f">alleene</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Maer teghen de hoocheyt des weerelts <rhyme label="a" type="m" corresp="#s2:l1">wijt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Moeten wy vechten int <rhyme label="b" type="f" corresp="#s2:l2">ghemeene</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Tegen Ceysers Coningen en Vorsten <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Al die de duysterheyt <rhyme label="b" type="f">regieren</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Moeten wy vechten tot inde <rhyme label="a" type="m" corresp="#s3:l1">doot</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Oprechten vroom Christus <rhyme label="b" type="f" corresp="#s3:l2">banieren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Teghen die schalckheyt quaet als <rhyme label="a" type="m">fenijn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Der gheesten die inde locht <rhyme label="b" type="f">wercken</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Moeten wy oock oock wel ghewapent <rhyme label="a" type="m" corresp="#s4:l1">zijn</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Haer loosheyt en bedroch <rhyme label="b" type="f" corresp="#s4:l2">aenmercken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sy sullen teeckens en wonder <rhyme label="a" type="m">doen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En door een schijn der waerheyt <rhyme label="b" type="f">lieghen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Die haer niet vast aen Christus en <rhyme label="a" type="m" corresp="#s5:l1">hoen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die sullen sy alle <rhyme label="b" type="f" corresp="#s5:l2">bedrieghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer hopen moeten wy met goet <rhyme label="a" type="m">verdrach</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En laten onse quade <rhyme label="b" type="f">manieren</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Op dat ons God inden quaden <rhyme label="a" type="m" corresp="#s6:l1">dach</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Door synen gheest mach wel <rhyme label="b" type="f" corresp="#s6:l2">bestieren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">In een lichaem der sonden <rhyme label="a" type="m">subiect</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En woont niet Gods geest vrij van <rhyme label="b" type="f">geschille</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Noch in gheen siele hy en <rhyme label="a" type="m" corresp="#s7:l1">treckt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Onghehoorsaem ende quaet van <rhyme label="b" type="f" corresp="#s7:l2">wille</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer die Christum soecken vroech ende <rhyme label="a" type="m">spay</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Om dienen sonder <rhyme label="b" type="f">cesseren</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Sal hy ontfanghen, en vrijen van <rhyme label="a" type="m" corresp="#s8:l1">schaey</rhyme></l>
        <l id="s8:l4" met="3" type="-+">In dien sy hem niet en <rhyme label="b" type="f" corresp="#s8:l2">tempteren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Aendoen sal hy haer zijn wapen <rhyme label="a" type="m">sterck</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Waermede hijt al heeft <rhyme label="b" type="f">verwonnen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Ende moet gheuen, want tis zijn <rhyme label="a" type="m" corresp="#s9:l1">werck</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Victorie sal hy haer <rhyme label="b" type="f" corresp="#s9:l2">ionnen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Staet kloeck weest vroom in al v <rhyme label="a" type="m">gheuecht</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Omgort v lendenen metter <rhyme label="b" type="f">waerheyt</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Doet aen dat pantsier, goet en <rhyme label="a" type="m" corresp="#s10:l1">oprecht</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Die gherechticheyt al sonder <rhyme label="b" type="f" corresp="#s10:l2">swaerheyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En weest gheschoeyt aen v voeten <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Met Deuangelium des <rhyme label="b" type="f">vreden</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Om te loopen als een bode <rhyme label="a" type="m" corresp="#s11:l1">snel</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Bootschappen Gods <rhyme label="b" type="f" corresp="#s11:l2">ghenadicheden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Neempt dat ghelooue tot eenen <rhyme label="a" type="m">schilt</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Teghen die duyuel <rhyme label="b" type="f">onmanierich</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Waer me ghebluscht wort, en <rhyme label="a" type="m" corresp="#s12:l1">ghestilt</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Alle zijn scherpe pijlen <rhyme label="b" type="f" corresp="#s12:l2">vierich</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Den helm der salicheyt, die wilt noch <rhyme label="a" type="m">voort</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Oock kloeckelick op v hooft <rhyme label="b" type="f">stellen</rhyme></l>
        <l id="s13:l3" met="4" type="-+">En grijpt dat sweert des gheests, dwelck is Gods <rhyme label="a" type="m" corresp="#s13:l1">woort</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Om v vyanden mede te <rhyme label="b" type="f" corresp="#s13:l2">vellen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Draecht Christus teecken dat roode <rhyme label="a" type="m">cruys</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Treckt willich wt met hem te <rhyme label="b" type="f">velde</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Lijdt smaet, druck, noot, ancxst doot, <rhyme label="a" type="m" corresp="#s14:l1">confuys</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Neemt so zijn rijck in met <rhyme label="b" type="f" corresp="#s14:l2">ghewelde</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Loopt vroom ghemoet met <rhyme label="a" type="m">verduldicheyt</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Lijdtsaemlick sonder <rhyme label="b" type="f">verlanghen</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Inden strijt die v God te vooren <rhyme label="a" type="m" corresp="#s15:l1">leyt</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Danct, looft, prijst hem met blijde <rhyme label="b" type="f" corresp="#s15:l2">sanghen</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Wilt roepen smeecken bidt inden <rhyme label="a" type="m">gheest</rhyme></l>
        <l id="s16:l2" met="3" type="-+">En houdt goede waeck tot allen <rhyme label="b" type="f">stonden</rhyme></l>
        <l id="s16:l3" met="4" type="-+">En vlucht om druck lijden noch <rhyme label="a" type="m" corresp="#s16:l1">tempeest</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Een oprecht Ridder wort ghy <rhyme label="b" type="f" corresp="#s16:l2">beuonden</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Die wt desen strijde wijcken <rhyme label="a" type="m">al</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Die en sullen God niet <rhyme label="b" type="f">behaghen</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Maer die volstandich vechten <rhyme label="a" type="m" corresp="#s17:l1">sal</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Tot in die doot sonder <rhyme label="b" type="f" corresp="#s17:l2">versaghen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Afwasschen salmen zijn tranen <rhyme label="a" type="m">swaer</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Sijn lijden dat wort al <rhyme label="b" type="f">ghenesen</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Blinckende kleederen wit en <rhyme label="a" type="m" corresp="#s18:l1">klaer</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Sal hy aendoen en blijde <rhyme label="b" type="f" corresp="#s18:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Een kroone met grooter <rhyme label="a" type="m">melodije</rhyme></l>
        <l id="s19:l2" met="3" type="-+">Wilt Christus op zijn hooft noch <rhyme label="b" type="f">gheuen</rhyme></l>
        <l id="s19:l3" met="4" type="-+">Dat wort synen loon en zijn <rhyme label="a" type="m" corresp="#s19:l1">soudije</rhyme></l>
        <l id="s19:l4" met="3" type="-+">En met Christo sal hy eewich <rhyme label="b" type="f" corresp="#s19:l2">leuen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
