  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHelijck een <rhyme label="a" type="m">Nachtegael</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Kan door haer soete <rhyme label="a" type="m" corresp="#s1:l1">tael</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Des menschens hert door <rhyme label="b" type="f">dringhen</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Soo kan een brave <rhyme label="c" type="m">Maeght</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Oock door haer geestigh <rhyme label="b" type="f" corresp="#s1:l3">singen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Haer maecken mee <rhyme label="c" type="m" corresp="#s1:l4">behaeght</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Viel Cloris sijnen <rhyme label="a" type="m">sin</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Niet op een <rhyme label="a" type="m" corresp="#s2:l1">Herderin</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo haest hy maer eens <rhyme label="b" type="f">hoorde</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Haer aenghenaem <rhyme label="c" type="m">ghesangh</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat hem doen strackx <rhyme label="b" type="f" corresp="#s2:l3">bekoorde</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En in het herte <rhyme label="c" type="m" corresp="#s2:l4">drangh</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy zijnd’ een <rhyme label="a" type="m">Hovelingh</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die sijnen loon <rhyme label="a" type="m" corresp="#s3:l1">ontfingh</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Al van een machtigh <rhyme label="b" type="f">Koningh</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Verliet nochtans het <rhyme label="c" type="m">Hof</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En koos de Herders <rhyme label="b" type="f" corresp="#s3:l3">wooningh</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Met haer gheringhe <rhyme label="c" type="m" corresp="#s3:l4">lof</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Alleen om <rhyme label="a" type="m">Filida</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die hy bad om het <rhyme label="a" type="m" corresp="#s4:l1">Ia</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En dat hy mocht <rhyme label="b" type="f">verwerven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met haer in d’ Echt te <rhyme label="c" type="m">treen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Ofte hy soude <rhyme label="b" type="f" corresp="#s4:l3">sterven</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Door pijne <rhyme label="c" type="m" corresp="#s4:l4">onghemeen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy siend sijn lijden <rhyme label="a" type="m">aen</rhyme>:</l>
        <l id="s5:l2" met="3" type="-+">Was met hem voort <rhyme label="a" type="m" corresp="#s5:l1">belaen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Alsoo hy haer ginck <rhyme label="b" type="f">sweeren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat hy souw blijven <rhyme label="c" type="m">trouw</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Tot dat de doodt ‘t sou <rhyme label="b" type="f" corresp="#s5:l3">keren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En wenden vreught in <rhyme label="c" type="m" corresp="#s5:l4">rouw</rhyme>.</l>
      </lg>
    </lg>
  </text>
