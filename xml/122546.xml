  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Zeg mijn lieve <rhyme label="a" type="f">meisje</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Wat doet gij zoo laat op <rhyme label="b" type="m">straat</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Zeg mij voor een <rhyme label="a" type="f" corresp="#s1:l1">reisje</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Waar gij henen <rhyme label="b" type="m" corresp="#s1:l2">gaat</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Ik ga Mejufvrouw <rhyme label="a" type="f">halen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die nog bij haar vrienden <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Want zij zou <rhyme label="a" type="f" corresp="#s2:l1">verdwalen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">In deez' <rhyme label="b" type="m" corresp="#s2:l2">duisternis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Hoeveel zijn uw <rhyme label="a" type="f">verdiensten</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die gij verdiend 't heele <rhyme label="b" type="m">jaar</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Bij uw jufvrouw of <rhyme label="a" type="f" corresp="#s3:l1">matresse</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">'k Ben er nieuwsgierig <rhyme label="b" type="m" corresp="#s3:l2">na</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Twintig gulden <rhyme label="a" type="f">effen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Die verdien ik met de <rhyme label="b" type="m">knecht</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">'t Drinkgeld daar <rhyme label="a" type="f" corresp="#s4:l1">beneffen</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Maar het gaat zeer <rhyme label="b" type="m" corresp="#s4:l2">slecht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Van deez' avond kunt gij <rhyme label="a" type="f">winnen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Wel vijf pond groot dat is niet <rhyme label="b" type="m">klein</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Daarom treedt maar <rhyme label="a" type="f" corresp="#s5:l1">binnen</rhyme>;</l>
        <l id="s5:l4" met="3" type="+-">Het zal u voordeelig <rhyme label="b" type="m" corresp="#s5:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Zooveel ronde <rhyme label="a" type="f">schijven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Die verlekk'ren deze <rhyme label="b" type="m">maagd</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Zonder lang te <rhyme label="a" type="f" corresp="#s6:l1">blijven</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Heeft zij de kans <rhyme label="b" type="m" corresp="#s6:l2">gewaagd</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Maar toen hij zou <rhyme label="a" type="f">betalen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Toen had hij geen geld op <rhyme label="b" type="m">zak</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">Hij sprak zonder <rhyme label="a" type="f" corresp="#s7:l1">falen</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Ik zal betalen <rhyme label="b" type="m" corresp="#s7:l2">strak</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Hij schreef de meid een <rhyme label="a" type="f">briefje</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">En stelde haar uit van dag tot <rhyme label="b" type="m">uur</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Dan zal ik u mijn <rhyme label="a" type="f" corresp="#s8:l1">hartediefje</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Betalen deez' kelder <rhyme label="b" type="m" corresp="#s8:l2">huur</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Zij heeft hem gaan <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Voor 't Geregt al met er <rhyme label="b" type="m">spoed</rhyme>,</l>
        <l id="s9:l3" met="3" type="+-">Die hem ook deed <rhyme label="a" type="f" corresp="#s9:l1">vragen</rhyme>,</l>
        <l id="s9:l4" met="3" type="+-">Haar verdiende <rhyme label="b" type="m" corresp="#s9:l2">goed</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Ik had het niet <rhyme label="a" type="f">geweten</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Sprak de vent van het <rhyme label="b" type="m">gebrek</rhyme>,</l>
        <l id="s10:l3" met="3" type="+-">De keider was <rhyme label="a" type="f" corresp="#s10:l1">gespleten</rhyme>,</l>
        <l id="s10:l4" met="3" type="+-">En van onderen <rhyme label="b" type="m" corresp="#s10:l2">lek</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">Zij zei, wel groote <rhyme label="a" type="f">Heeren</rhyme>!</l>
        <l id="s11:l2" met="4" type="+-">Hij heeft gezworen mij zijn <rhyme label="b" type="m">trouw</rhyme>,</l>
        <l id="s11:l3" met="3" type="+-">Als dat hij de gaten en <rhyme label="a" type="f" corresp="#s11:l1">spleten</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">Van mijn kelder stoppen <rhyme label="b" type="m" corresp="#s11:l2">zou</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="+-">Met een moest hij <rhyme label="a" type="f">tellen</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Deez' meid haar verdiende <rhyme label="b" type="m">loon</rhyme>,</l>
        <l id="s12:l3" met="3" type="+-">Hoort mij jong <rhyme label="a" type="f" corresp="#s12:l1">gezellen</rhyme>,</l>
        <l id="s12:l4" met="3" type="+-">Welk een <rhyme label="b" type="m" corresp="#s12:l2">avontuur</rhyme>.</l>
      </lg>
    </lg>
  </text>
