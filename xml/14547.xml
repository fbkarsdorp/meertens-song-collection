    <tags>
      <tag>spiritual song</tag>
    </tags>
    <melody>Als Jezus in zijn majesteit</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Jesus in sijn <rhyme label="a" type="m">Majesteyt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Sal komen, soo hy heeft <rhyme label="a" type="m" corresp="#s1:l1">voorseyt</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Gheven rechtveerdigh <rhyme label="b" type="f">oordeel</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Over elck sonder <rhyme label="b" type="f" corresp="#s1:l3">voordeel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den reecken-boeck sal open <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Elck sal daer loon na werck <rhyme label="a" type="m" corresp="#s2:l1">ontfaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En reeckeninge <rhyme label="b" type="f">geven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van zijn voor-gaende <rhyme label="b" type="f" corresp="#s2:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn reeckeningh' is <rhyme label="a" type="m">ongereedt</rhyme>:</l>
        <l id="s3:l2" met="4" type="-+">Mijn bloed verandert al in <rhyme label="a" type="m" corresp="#s3:l1">sweet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als ick aensie die <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die mijne ziel <rhyme label="b" type="f" corresp="#s3:l3">door-wonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick vinde my in grooten <rhyme label="a" type="m">noodt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Als ick denck op de tweede <rhyme label="a" type="m" corresp="#s4:l1">doodt</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">'t Waer beter noyt <rhyme label="b" type="f">ghebooren</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Dan eeuwigh zijn <rhyme label="b" type="f" corresp="#s4:l3">verlooren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe heb ick soo den tijdt <rhyme label="a" type="m">verquist</rhyme>!</l>
        <l id="s5:l2" met="4" type="-+">Och hoe heb ick aldus <rhyme label="a" type="m" corresp="#s5:l1">ghemist</rhyme>!</l>
        <l id="s5:l3" met="3" type="-+">Dat ick die schoone <rhyme label="b" type="f">straten</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Der deughden heb <rhyme label="b" type="f" corresp="#s5:l3">verlaten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Van sinnen was ick wel <rhyme label="a" type="m">berooft</rhyme>:</l>
        <l id="s6:l2" met="4" type="-+">Dat ick den vyandt heb <rhyme label="a" type="m" corresp="#s6:l1">ghelooft</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Het vleesch heeft my <rhyme label="b" type="f">bedroghen</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">En de werelt <rhyme label="b" type="f" corresp="#s6:l3">gheloghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer ick wil volgen goeden <rhyme label="a" type="m">raedt</rhyme>:</l>
        <l id="s7:l2" met="4" type="-+">Voort-aen beweenen mijn <rhyme label="a" type="m" corresp="#s7:l1">misdaedt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En my in tijdts <rhyme label="b" type="f">bereyden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Om wel van hier te <rhyme label="b" type="f" corresp="#s7:l3">scheyden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Weest my ghenadigh, Jesu <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Al door u sweet en dierbaer <rhyme label="a" type="m" corresp="#s8:l1">bloedt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En wilt my niet <rhyme label="b" type="f">verdommen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Als ick voor u sal <rhyme label="b" type="f" corresp="#s8:l3">kommen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
