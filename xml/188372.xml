  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="8" type="+-">GAudeamus, millenorum ,, Felix Iubilum <rhyme label="a" type="f">annorum</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Recolentes <rhyme label="b" type="m">hodie</rhyme>:</l>
        <l id="s1:l3" met="8" type="+-">Sit laus fonti bonitatis ,, Musicae sua <rhyme label="c" type="f">vitatis</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Resonent <rhyme label="b" type="m" corresp="#s1:l2">melodiae</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="8" type="+-">Vt Fundator, Dei sedem ,, Quercetanam <rhyme label="a" type="f">nostram</rhyme></l>
        <l id="s2:l2" met="4" type="+-">TRVDO sibi <rhyme label="b" type="m">vendicat</rhyme>;</l>
        <l id="s2:l3" met="8" type="+-">Genitus ex stirpe Regum ,,  Observator Dei <rhyme label="c" type="f">legum</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Sole magis <rhyme label="b" type="m" corresp="#s2:l2">splendicat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="8" type="+-">Charitatis ignem fovit ,, Adhuc puer, <rhyme label="a" type="f">Templum</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Domino <rhyme label="b" type="m">construere</rhyme>:</l>
        <l id="s3:l3" met="8" type="+-">O ! quisiste puer erit ,,  Qui nil praeter Iesum <rhyme label="c" type="f">quaerit</rhyme> ?</l>
        <l id="s3:l4" met="4" type="+-">Iesum vult <rhyme label="b" type="m" corresp="#s3:l2">induere</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="8" type="+-">Plenus Deo Sanctus TRVDO ,, Nullum tempus vano <rhyme label="a" type="f">ludo</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Trivit in hoc <rhyme label="b" type="m">saeculo</rhyme>;</l>
        <l id="s4:l3" met="8" type="+-">Obtulit se totum Deo ,, Vera pietas in <rhyme label="c" type="f">eo</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Pulfit, ut in <rhyme label="b" type="m" corresp="#s4:l2">speculo</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="8" type="+-">TRVDO fax Religionis ,, Atque thus <rhyme label="a" type="f">devotionis</rhyme>.</l>
        <l id="s5:l2" met="4" type="+-">Castitatis <rhyme label="b" type="m">lilium</rhyme>;</l>
        <l id="s5:l3" met="8" type="+-">Nostris precibus intende ,, Et ab hostibus <rhyme label="c" type="f">defende</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Tuum <rhyme label="b" type="m" corresp="#s5:l2">Domicilium</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="8" type="+-">Ardens instar Seraphini ,, Lucens instar <rhyme label="a" type="f">Cherubini</rhyme></l>
        <l id="s6:l2" met="4" type="+-">In aeterna <rhyme label="b" type="m">Patriâ</rhyme>,</l>
        <l id="s6:l3" met="8" type="+-">Domus hujus Architectè ,,  Tuos duc Clientes <rhyme label="c" type="f">rectè</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Ad Caelorum <rhyme label="b" type="m" corresp="#s6:l2">atria</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
