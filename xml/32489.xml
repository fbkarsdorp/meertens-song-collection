  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OTroost in mijne <rhyme label="a" type="m">smert</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O! Engel van mijn <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Gy wordt <rhyme label="b" type="f" corresp="#s1:l2">gepresen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van my, die u soo <rhyme label="c" type="m">vast</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Geprint hebt in mijn jeughdigh <rhyme label="a" type="m" corresp="#s1:l1">hert</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Gy syt alleen die ick <rhyme label="d" type="m">bemin</rhyme>,</l>
        <l id="s1:l7" met="5" type="-+">k' Heb u soo vast gestelt in mijnen <rhyme label="d" type="m" corresp="#s1:l6">sin</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Dat ick souw <rhyme label="e" type="f">sterven</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Moest ick u <rhyme label="e" type="f" corresp="#s1:l8">derven</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">Mijn soet <rhyme label="d" type="m" corresp="#s1:l6">gewin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">U Ooghskens als <rhyme label="a" type="m">Cristael</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">U schoonheyt <rhyme label="b" type="f">uyt-gelesen</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Op my <rhyme label="b" type="f" corresp="#s2:l2">geresen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als ick u eerst <rhyme label="c" type="m">aen-sagh</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Gelijck een klaere Sonne <rhyme label="a" type="m" corresp="#s2:l1">strael</rhyme>.</l>
        <l id="s2:l6" met="4" type="-+">U Borstjens als een Leli <rhyme label="d" type="m">Blom</rhyme>,</l>
        <l id="s2:l7" met="5" type="-+">Syn d'oorsaeck, dat ik dick wils by u <rhyme label="d" type="m" corresp="#s2:l6">com</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Die sijn de <rhyme label="e" type="f">reden</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Dat ick noch <rhyme label="e" type="f" corresp="#s2:l8">heden</rhyme></l>
        <l id="s2:l10" met="2" type="-+">In Liefde <rhyme label="d" type="m" corresp="#s2:l6">swom</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Op dat ick door mijn <rhyme label="a" type="m">smert</rhyme></l>
        <l id="s3:l2" met="3" type="-+">U Liefde magh <rhyme label="b" type="f">genieten</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Cupid' wilt <rhyme label="b" type="f" corresp="#s3:l2">schieten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met uwen schicht in het <rhyme label="c" type="m">diepst</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Van haer verkillend' <rhyme label="a" type="m" corresp="#s3:l1">hert</rhyme>;</l>
        <l id="s3:l6" met="4" type="-+">Dan sal ick schryven met mijn <rhyme label="d" type="m">pen</rhyme>,</l>
        <l id="s3:l7" met="5" type="-+">Dat ick de schult, noch oock de oorsaeck <rhyme label="d" type="m" corresp="#s3:l6">ben</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Wilt my <rhyme label="e" type="f">verschoonen</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">En haer <rhyme label="e" type="f" corresp="#s3:l8">verthoonen</rhyme></l>
        <l id="s3:l10" met="2" type="-+">My voor Dienaer <rhyme label="d" type="m" corresp="#s3:l6">ken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wat heb ick noch al <rhyme label="a" type="m">meer</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Niet meer kan ick <rhyme label="b" type="f">versinnen</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Als u te <rhyme label="b" type="f" corresp="#s4:l2">Minnen</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Daer om heb ick mijn <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Gestelt op u, tot wie my <rhyme label="a" type="m" corresp="#s4:l1">keer</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Op dat ick door <rhyme label="d" type="m">stant-vastigheyt</rhyme></l>
        <l id="s4:l7" met="5" type="-+">U krygen souw en door <rhyme label="d" type="m" corresp="#s4:l6">getrouwigheyt</rhyme>;</l>
        <l id="s4:l8" met="3" type="-+">Wilt Klappers <rhyme label="e" type="f">haeten</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">En met my <rhyme label="e" type="f" corresp="#s4:l8">praeten</rhyme></l>
        <l id="s4:l10" met="2" type="-+">Tot hunder <rhyme label="d" type="m" corresp="#s4:l6">spyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
