<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>52044</id>
    <date>
      <year-start>1820</year-start>
      <year-end>1820</year-end>
    </date>
    <tags>
      <tag>farewell song</tag>
    </tags>
    <melody>Ich bin der Doktor Eisenbart</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ik ben de Doctor <rhyme label="a" type="m">Yzerbaard</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Genees elk Ziekte na zyn <rhyme label="a" type="m" corresp="#s1:l1">aard</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ik maak de blinden 't loopen <rhyme label="b" type="m">ligt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En geef aan Lammen het <rhyme label="b" type="m" corresp="#s1:l3">gezigt</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Tra la, <rhyme label="c" type="m">la</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Te Postdam temporeerde <rhyme label="a" type="m">ik</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">De Kok van grooten <rhyme label="a" type="m" corresp="#s2:l1">Frederik</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Eerst schroefden ik hem na myn <rhyme label="b" type="m">zin</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En drukte hem toen de Herssens <rhyme label="b" type="m" corresp="#s2:l3">in</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Tra la, <rhyme label="c" type="m">la</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Te Ulm genae ik ook een <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat 't bloed hem uit zyn Tonen <rhyme label="a" type="m" corresp="#s3:l1">kwam</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Ik vaccineerde met sen <rhyme label="b" type="m">spit</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat hem noch in zyn Ribben <rhyme label="b" type="m" corresp="#s3:l3">zit</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Tra la, <rhyme label="c" type="m">la</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Er had een Man in <rhyme label="a" type="m">Langersals</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Een Kropgezwel aan zyne <rhyme label="a" type="m" corresp="#s4:l1">Hals</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ik trok het met een Hooytouw <rhyme label="b" type="m">digt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Probatum, wierd zyn pyn <rhyme label="b" type="m" corresp="#s4:l3">verligt</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Tra la, <rhyme label="c" type="m">la</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De Kosters Zoon uit <rhyme label="a" type="m">Didelum</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Gaf ik wel tien pond <rhyme label="a" type="m" corresp="#s5:l1">Opium</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hy sliep wel zes Jaar agter <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En noch verroerd hy zelf geen <rhyme label="b" type="m" corresp="#s5:l3">been</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Tra la, <rhyme label="c" type="m">la</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Te Jena haalde ik een <rhyme label="a" type="m">Wyf</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Zes Molensteenen uit haar <rhyme label="a" type="m" corresp="#s6:l1">Lyf</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Toen zat er nog een ruim zo <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maar deze steen was juist haar <rhyme label="b" type="m" corresp="#s6:l3">dood</rhyme>.</l>
        <l id="s6:l5" met="2" type="+-">Tra la, <rhyme label="c" type="m">la</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Myn kunst gaat zeker en <rhyme label="a" type="m">gewis</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Ik weet toch dat er niemand <rhyme label="a" type="m" corresp="#s7:l1">is</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Voor wien myn harssens stonden <rhyme label="b" type="m">pal</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Of die 't ooit na vertellen <rhyme label="b" type="m" corresp="#s7:l3">zal</rhyme>.</l>
        <l id="s7:l5" met="2" type="+-">Tra la, <rhyme label="c" type="m">la</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ik zweer u by myn Docters <rhyme label="a" type="m">hoed</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Smaakt u het leven niet te <rhyme label="a" type="m" corresp="#s8:l1">zoet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">EÃ©n Pil van myne <rhyme label="b" type="m">Yzerbaard</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Verhuisd u dadelyk van deez' <rhyme label="b" type="m" corresp="#s8:l3">aard</rhyme>.</l>
        <l id="s8:l5" met="2" type="+-">Tra la, <rhyme label="c" type="m">la</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
