    <melody>Lovertjes dat zijn lovertjes</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Een schoon en lieff’lijc <rhyme label="a" type="m">avontmael</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Is bereyt voor de <rhyme label="b" type="f">menschen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De boden roepen <rhyme label="a" type="m" corresp="#s1:l1">generael</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Wie wil, mach nae sijn <rhyme label="b" type="f" corresp="#s1:l2">wenschen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Comen ter Feest // minst ende <rhyme label="c" type="m">meest</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Geen aensien der <rhyme label="d" type="f">persoonen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wie wil mach comen <rhyme label="d" type="f" corresp="#s1:l6">woonen</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">In ‘t huys des Heeren <rhyme label="c" type="m" corresp="#s1:l5">onbevreest</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En eten daer des levens <rhyme label="a" type="m">spijs</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">‘t Sijn lieff’lijcke <rhyme label="b" type="f">bancketten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sy maecken domme menschen <rhyme label="a" type="m" corresp="#s2:l1">wijs</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In Goddelijcke <rhyme label="b" type="f" corresp="#s2:l2">wetten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Hoemen sal gaen // op ‘s levens <rhyme label="c" type="m">baen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Om wijsheyt te <rhyme label="d" type="f">leeren</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Met grooter <rhyme label="d" type="f" corresp="#s2:l6">begeeren</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Alsmen sijn eygen wil af <rhyme label="c" type="m" corresp="#s2:l5">staen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Christus hem selven heeft <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ootmoedigh tot een <rhyme label="b" type="f">spijse</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Al die lust heeft <rhyme label="a" type="m" corresp="#s3:l1">ootmoedigheyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Te eeten die wort <rhyme label="b" type="f" corresp="#s3:l2">wijse</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Wie eet met lust // hy vint der Zielen <rhyme label="c" type="m">rust</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Des Heeren <rhyme label="d" type="f">genaden</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hem lieff’lijck <rhyme label="d" type="f" corresp="#s3:l6">versaden</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Waer door all’ boosheyt wert <rhyme label="c" type="m" corresp="#s3:l5">geblust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Soet is dees spijs, o menschen <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Comt snel, laet u niet <rhyme label="b" type="f">binden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Van hoovaerts banden, groot van <rhyme label="a" type="m" corresp="#s4:l1">tal</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Maer comt en laet u <rhyme label="b" type="f" corresp="#s4:l2">vinden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Lieft huys noch hof // om u te houden <rhyme label="c" type="m">of</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van dese <rhyme label="d" type="f">Feeste</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Acht die voor het <rhyme label="d" type="f" corresp="#s4:l6">meeste</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">En ‘ werelts wesen acht maer <rhyme label="c" type="m" corresp="#s4:l5">stof</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Denckt doch al die maeckten <rhyme label="a" type="m">onschult</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Door ‘t coopen van den <rhyme label="b" type="f">acker</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daer mee haer herte was <rhyme label="a" type="m" corresp="#s5:l1">vervult</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat sy niet werden <rhyme label="b" type="f" corresp="#s5:l2">wacker</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Door ‘t nooden wel // al van de boden <rhyme label="c" type="m">snel</rhyme></l>
        <l id="s5:l6" met="3" type="-+">De liefde van dees <rhyme label="d" type="f">aerde</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Was haer in grooter <rhyme label="d" type="f" corresp="#s5:l6">waerde</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Dan ‘s Heeren nooden ‘t soet <rhyme label="c" type="m" corresp="#s5:l5">voorstel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die hoovaert dat niet erven <rhyme label="a" type="m">can</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dees Bruyloft Feest vol <rhyme label="b" type="f">weelde</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ghy moet geheel daer scheyden <rhyme label="a" type="m" corresp="#s6:l1">van</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hoe schoon sy u <rhyme label="b" type="f" corresp="#s6:l2">voorspeelden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Niets niet moet sy // u blyven <rhyme label="c" type="m">by</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Ghy moet om <rhyme label="d" type="f">keeren</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ootmoedigh <rhyme label="d" type="f" corresp="#s6:l6">leeren</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Te gaen na dese Feeste <rhyme label="c" type="m" corresp="#s6:l5">bly</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De Liefde deelt haer in dees <rhyme label="a" type="m">Feest</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Christi de Liefde <rhyme label="b" type="f">schoone</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die smaeckt so soet al in den <rhyme label="a" type="m" corresp="#s7:l1">Geest</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sy verblijt elck <rhyme label="b" type="f" corresp="#s7:l2">persoone</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Sy geeft haer cracht // in haer <rhyme label="c" type="m">gedacht</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Datse dat Hemels <rhyme label="d" type="f">smaecken</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dat aertsche draf <rhyme label="d" type="f" corresp="#s7:l6">versaken</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Met al haer rijckdom en haer <rhyme label="c" type="m" corresp="#s7:l5">pracht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De ossen-coopers door <rhyme label="a" type="m">begeert</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Haer onschult oock voor <rhyme label="b" type="f">stelden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Door dat haer hert, Liefde de <rhyme label="a" type="m" corresp="#s8:l1">eert</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Die aertsche groene <rhyme label="b" type="f" corresp="#s8:l2">velden</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Om door ‘t gewin // voor haer <rhyme label="c" type="m">gesin</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Hier schatten te <rhyme label="d" type="f">vergaren</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Als aertsche <rhyme label="d" type="f" corresp="#s8:l6">dienaren</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Dit sagen sy voor noodigh <rhyme label="c" type="m" corresp="#s8:l5">in</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Die derde had een Huysvrou <rhyme label="a" type="m">getrout</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Hy mocht, noch wout niet <rhyme label="b" type="f">comen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Hy was van vlees-liefde <rhyme label="a" type="m" corresp="#s9:l1">bedout</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Die had hy in <rhyme label="b" type="f" corresp="#s9:l2">genomen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">In die wel-lust // socht hy sijn <rhyme label="c" type="m">rust</rhyme></l>
        <l id="s9:l6" met="3" type="-+">En in de aertsche <rhyme label="d" type="f">commer</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Vol ydelheyt en <rhyme label="d" type="f" corresp="#s9:l6">slommer</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">Daer door dees maeltijt wert <rhyme label="c" type="m" corresp="#s9:l5">gemust</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O mens! versuymt doch niet dees <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Maeltijt, om corte <rhyme label="b" type="f">lusten</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Draecht rou, en leet, doet rechte <rhyme label="a" type="m" corresp="#s10:l1">boet</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Soeckt recht der Zielen <rhyme label="b" type="f" corresp="#s10:l2">rusten</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Besnoeyt u wil, wort arm en <rhyme label="c" type="m">stil</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Weest met een cleyn te <rhyme label="d" type="f">vreden</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Soeckt stil ende <rhyme label="d" type="f" corresp="#s10:l6">eenigheden</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">Dat ghy met Godt hebt geen <rhyme label="c" type="m" corresp="#s10:l5">geschil</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ick bidde u al ghy die dit <rhyme label="a" type="m">leest</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Wilt het niet ydel <rhyme label="b" type="f">singen</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">‘t Minste verlaet, al om het <rhyme label="a" type="m" corresp="#s11:l1">meest</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Wilt door d’enge poort <rhyme label="b" type="f" corresp="#s11:l2">dringen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Christus be-oocht // vierigh na <rhyme label="c" type="m">poocht</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Sonder om <rhyme label="d" type="f">kijcken</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Nae d’aersche <rhyme label="d" type="f" corresp="#s11:l6">rijcken</rhyme></l>
        <l id="s11:l8" met="4" type="-+">So wert ghy in Gods rijck <rhyme label="c" type="m" corresp="#s11:l5">verhoogt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
