  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEbben wy hier smert, en <rhyme label="a" type="m">pyn</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">t'Sal maer duren korte <rhyme label="b" type="f">tyden</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Naer veel <rhyme label="b" type="f" corresp="#s1:l2">lyden</rhyme></l>
        <l id="s1:l4" met="2" type="+-">In <rhyme label="b" type="f" corresp="#s1:l2">verblyden</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Sult gy <rhyme label="a" type="m" corresp="#s1:l1">syn</rhyme>.</l>
        <l id="s1:l6" met="4" type="+-">Hier naer sult gy staen <rhyme label="c" type="f">verheven</rhyme>:</l>
        <l id="s1:l7" met="2" type="+-">Wat sal <rhyme label="c" type="f" corresp="#s1:l6">geven</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Naer dit <rhyme label="c" type="f" corresp="#s1:l6">leven</rhyme></l>
        <l id="s1:l9" met="2" type="+-">s'Wereldts <rhyme label="a" type="m" corresp="#s1:l1">schyn</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Alles is op d'aerd' een <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dat van ons haest wegh sal <rhyme label="b" type="f">vluchten</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">Naer <rhyme label="b" type="f" corresp="#s2:l2">genuchten</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Eeuwigh <rhyme label="b" type="f" corresp="#s2:l2">suchten</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Gy <rhyme label="a" type="m" corresp="#s2:l1">voorsiet</rhyme>.</l>
        <l id="s2:l6" met="4" type="+-">Wilt gy eens tot Godt <rhyme label="c" type="f">geraeken</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">In hem <rhyme label="c" type="f" corresp="#s2:l6">blaeken</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Syn vreught <rhyme label="c" type="f" corresp="#s2:l6">smaeken</rhyme>?</l>
        <l id="s2:l9" met="2" type="+-">Lydt <rhyme label="a" type="m" corresp="#s2:l1">verdriet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Voor ons druck is s'Hemels <rhyme label="a" type="m">throon</rhyme>:</l>
        <l id="s3:l2" met="4" type="+-">Dat u dees' ontsteekt van <rhyme label="b" type="f">binnen</rhyme>:</l>
        <l id="s3:l3" met="2" type="+-">Onse <rhyme label="b" type="f" corresp="#s3:l2">sinnen</rhyme></l>
        <l id="s3:l4" met="2" type="+-">Wilt Godt <rhyme label="b" type="f" corresp="#s3:l2">winnen</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Door dees <rhyme label="a" type="m" corresp="#s3:l1">Kroon</rhyme>.</l>
        <l id="s3:l6" met="4" type="+-">Doet al uw' gedachten <rhyme label="c" type="f">strecken</rhyme>,</l>
        <l id="s3:l7" met="2" type="+-">Laet u <rhyme label="c" type="f" corresp="#s3:l6">trecken</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s3:l6">verwecken</rhyme></l>
        <l id="s3:l9" met="2" type="+-">Tot dees' <rhyme label="a" type="m" corresp="#s3:l1">loon</rhyme>.</l>
      </lg>
    </lg>
  </text>
