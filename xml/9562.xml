    <melody>Psalm 009 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE droeve nacht die is <rhyme label="a" type="m">vergaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">De dageraet breeckt vrolijck <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De Sonne rijst, ick moet oock <rhyme label="b" type="f">rijsen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Om uwen Naem, o Godt! te <rhyme label="b" type="f" corresp="#s1:l3">prijsen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Om dat ghy, naer u goeden <rhyme label="a" type="m">aert</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">My desen nacht wel hebt <rhyme label="a" type="m" corresp="#s2:l1">bewaert</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Ick bidde wilt my vorder <rhyme label="b" type="f">sparen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat my geen quaet komt <rhyme label="b" type="f" corresp="#s2:l3">wedervaren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">V goede Geest geleyde <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Op dat ick altijdt seker <rhyme label="a" type="m" corresp="#s3:l1">zy</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En wilt u knecht daer me'e <rhyme label="b" type="f">verstercken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Tot ware drift van goede <rhyme label="b" type="f" corresp="#s3:l3">wercken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dat desen dagh, en boven <rhyme label="a" type="m">dien</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Den tijdt die ghy my gunt te <rhyme label="a" type="m" corresp="#s4:l1">sien</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Mach zijn besteedt alleen, o <rhyme label="b" type="f">Heere</rhyme>!</l>
        <l id="s4:l4" met="4" type="-+">In heyligheyt, tot uwer <rhyme label="b" type="f" corresp="#s4:l3">eere</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Alsoo dat ick den milden <rhyme label="a" type="m">vloedt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Den rijcken aen-was van mijn <rhyme label="a" type="m" corresp="#s5:l1">goedt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Van uwer handt alleen <rhyme label="b" type="f">verwachte</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En uwe gunst daer in <rhyme label="b" type="f" corresp="#s5:l3">betrachte</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Op dat ick dit genaed' van <rhyme label="a" type="m">u</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Verkrijge, soo vergeeft my <rhyme label="a" type="m" corresp="#s6:l1">nu</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Om Christi wil, al mijn <rhyme label="b" type="f">misdaden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Waer meed' ick ben belast, <rhyme label="b" type="f" corresp="#s6:l3">beladen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Verlicht mijn hert, en mijn <rhyme label="a" type="m">verstant</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat ick het quaedt wijs van der <rhyme label="a" type="m" corresp="#s7:l1">hant</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En als een kint des lichts, daer <rhyme label="b" type="f">neven</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Mach wand'len, en Godsaligh <rhyme label="b" type="f" corresp="#s7:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Verstoort oock al het boose <rhyme label="a" type="m">werck</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Des Duyvels, en bewaer u <rhyme label="a" type="m" corresp="#s8:l1">Kerck</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En alle die met hert, en <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">V Tortel-duyf, u Bruydt, <rhyme label="b" type="f" corresp="#s8:l3">beminnen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Troost voorder, die met sware <rhyme label="a" type="m">pijn</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Besocht, en aengevochten <rhyme label="a" type="m" corresp="#s9:l1">zijn</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Ia, God, komt troost ons al te <rhyme label="b" type="f">samen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Met uwen Geest, door Christum, <rhyme label="b" type="f" corresp="#s9:l3">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
