  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Mijn hertze heift groot verlangen <rhyme label="a" type="m">in</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Das ich so verre van haer <rhyme label="a" type="m" corresp="#s1:l1">bin</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wien ic met trauwen <rhyme label="b" type="f">diene</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ic wille in can des des truert mijn <rhyme label="a" type="m" corresp="#s1:l1">zin</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Mijn hertze heift groot verlanghen <rhyme label="a" type="m" corresp="#s1:l1">in</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mi ne can verbliden gheen <rhyme label="a" type="m">gewin</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Vor ic u sie lief <rhyme label="a" type="m" corresp="#s2:l1">vrouwelin</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Des staet mi vruecht <rhyme label="b" type="f">tontvliene</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Up hope ic leve des trueric <rhyme label="a" type="m" corresp="#s2:l1">min</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Doch heift mijn hertz verlanghen <rhyme label="a" type="m" corresp="#s2:l1">in</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ic weinsch u heil wes ich <rhyme label="a" type="m">beghin</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Al es mijn heil van vruechden <rhyme label="a" type="m" corresp="#s3:l1">din</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ic hope u vroylic <rhyme label="b" type="f">tsiene</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Mijn hertze heift groot verlangen <rhyme label="a" type="m" corresp="#s3:l1">in</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Das ich so verre van haer <rhyme label="a" type="m" corresp="#s3:l1">bin</rhyme></l>
