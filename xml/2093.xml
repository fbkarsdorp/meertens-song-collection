  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">'k HEbb' dickwils voor den vaeck <rhyme label="a" type="m">gheschroomt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Om dat den slaep de <rhyme label="b" type="f">minne-treken</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Van Jesus liefde komt <rhyme label="b" type="f" corresp="#s1:l2">af-breken</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ter-wyl' dat 't hert' iet anders <rhyme label="a" type="m" corresp="#s1:l1">droomt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer Jesus wirdt myn' klacht <rhyme label="a" type="m">ghewaer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">'k Ben in den droom tot hem <rhyme label="b" type="f">ghevloghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Myn' Ziel wirdt in Godt <rhyme label="b" type="f" corresp="#s2:l2">op-ghetoghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">My docht dat 'k in den Hemel <rhyme label="a" type="m" corresp="#s2:l1">waer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer sagh ick Jesus <rhyme label="a" type="m">Gulden-throon</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die glinsterde van alle <rhyme label="b" type="f">kanten</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Van Peirels ende <rhyme label="b" type="f" corresp="#s3:l2">Diamanten</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En loofden hem met soeten <rhyme label="a" type="m" corresp="#s3:l1">thoon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'t Musieck van d'Enghels <rhyme label="a" type="m">al-te-gaer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die soete musicale <rhyme label="b" type="f">Chooren</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Die kloncken in myn hert' en <rhyme label="b" type="f" corresp="#s4:l2">ooren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ick meynde dat ick Saligh <rhyme label="a" type="m" corresp="#s4:l1">waer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer daer-en-tusschen kraeyt den <rhyme label="a" type="m">Haen</rhyme>;</l>
        <l id="s5:l2" met="4" type="-+">Den Haen beghint te <rhyme label="b" type="f">koeckeloeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hy stelden heel myn hert in <rhyme label="b" type="f" corresp="#s5:l2">roeren</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En al myn blydtschap was <rhyme label="a" type="m" corresp="#s5:l1">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ick die eens droef was dat den <rhyme label="a" type="m">vaeck</rhyme></l>
        <l id="s6:l2" met="4" type="-+">My van de liefde Godts quam <rhyme label="b" type="f">trecken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Was droef als my den Haen quam <rhyme label="b" type="f" corresp="#s6:l2">wecken</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Uyt eenen droom soo vol <rhyme label="a" type="m" corresp="#s6:l1">vermaeck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
