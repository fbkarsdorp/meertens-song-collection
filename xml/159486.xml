  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Leef lang, O wel vereende Zielen, <rhyme label="a" type="m">leefd</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat niets uw heyl <rhyme label="a" type="m" corresp="#s1:l1">weerstreefd</rhyme>.</l>
        <l id="s1:l3" met="2" type="-+">Een ware <rhyme label="b" type="m">brand</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Sy 't <rhyme label="b" type="m" corresp="#s1:l3">onderpand</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van uwe huwlijks <rhyme label="b" type="m" corresp="#s1:l3">band</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Op dat door druk nog <rhyme label="c" type="m">smert</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Sig noit ontroert   uw <rhyme label="c" type="m" corresp="#s1:l6">hert</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Maar trouw gevonden <rhyme label="c" type="m" corresp="#s1:l6">werd</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">Dan sal de bitse <rhyme label="d" type="m">Nyd</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Verteren in haar <rhyme label="d" type="m" corresp="#s1:l9">spyt</rhyme></l>
        <l id="s1:l11" met="3" type="+-">En nooit door haar <rhyme label="e" type="m">vergift</rhyme></l>
        <l id="s1:l12" met="4" type="-+">Verkeren u opregte <rhyme label="e" type="m" corresp="#s1:l11">drift</rhyme>;</l>
        <l id="s1:l13" met="3" type="+-">Dan sal een ware <rhyme label="f" type="m">gloed</rhyme></l>
        <l id="s1:l14" met="3" type="+-">Ontsteken u <rhyme label="f" type="m" corresp="#s1:l13">gemoed</rhyme>,</l>
        <l id="s1:l15" met="3" type="+-">Die met oneindig <rhyme label="f" type="m" corresp="#s1:l13">soet</rhyme></l>
        <l id="s1:l16" met="3" type="+-">Vereende zielen <rhyme label="f" type="m" corresp="#s1:l13">voed</rhyme>.</l>
      </lg>
