  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LEst vraaghde my een <rhyme label="a" type="f">Susje</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die 'k vry wat graaghjes <rhyme label="b" type="m">sach</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met een zerp-soete <rhyme label="a" type="f" corresp="#s1:l1">kusje</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Of s' in mijn hertje <rhyme label="b" type="m" corresp="#s1:l2">lach</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">'k Seyd gans bloet, en 'k sprak, och <rhyme label="c" type="f">armen</rhyme>!</l>
        <l id="s1:l6" met="4" type="+-">Hoe is doch uw vraegh soo <rhyme label="d" type="m">slecht</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Mijn soete <rhyme label="e" type="m">Meyt</rhyme>?</l>
        <l id="s1:l8" met="2" type="-+">Wat 's dat <rhyme label="e" type="m" corresp="#s1:l7">geseyt</rhyme>?</l>
        <l id="s1:l9" met="4" type="+-">Laaght ghy soo staagh in mijn <rhyme label="c" type="f" corresp="#s1:l5">armen</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Als ghy wel lecht in mijn <rhyme label="d" type="m" corresp="#s1:l6">hert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">s' Had nauw mijn stem <rhyme label="a" type="f">vernomen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Of haar lipjes <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Haast aan de mijn' <rhyme label="a" type="f" corresp="#s2:l1">gekomen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Rooder als <rhyme label="b" type="m" corresp="#s2:l2">Coralijn</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">En aanschouwende mijn' <rhyme label="c" type="f">oogen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Of mijn hert by 't sijne <rhyme label="d" type="m">leydt</rhyme>;</l>
        <l id="s2:l7" met="2" type="-+">Mocht ick dat <rhyme label="e" type="m">sien</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">'k Soud'me dan <rhyme label="e" type="m" corresp="#s2:l7">biên</rhyme>;</l>
        <l id="s2:l9" met="4" type="+-">Oogen, seyd sy, van <rhyme label="c" type="f" corresp="#s2:l5">vermoogen</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Aan mijn Minnaar die het <rhyme label="d" type="m" corresp="#s2:l6">seydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">'k Meen datse door 't <rhyme label="a" type="f">vertrouwen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">'t Geen s' uyt mijn oogen <rhyme label="b" type="m">kreegh</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Haar naulijcx kost <rhyme label="a" type="f" corresp="#s3:l1">onthouwen</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">En schoon haar Mondtje <rhyme label="b" type="m" corresp="#s3:l2">sweegh</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Sach ick doch haar wesen <rhyme label="c" type="f">seggen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Waarom vatje my niet, <rhyme label="d" type="m">segh</rhyme>?</l>
        <l id="s3:l7" met="2" type="-+">O waarde <rhyme label="e" type="m">Lief</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Mijn Ziels <rhyme label="e" type="m" corresp="#s3:l7">gerief</rhyme>;</l>
        <l id="s3:l9" met="4" type="+-">'k Wil in die sijn armen <rhyme label="c" type="f" corresp="#s3:l5">leggen</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">In wiens hertjen dat ick <rhyme label="d" type="m" corresp="#s3:l6">legh</rhyme></l>
      </lg>
    </lg>
  </text>
