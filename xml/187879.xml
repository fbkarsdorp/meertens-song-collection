  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'t MAnna, dat van uyt den <rhyme label="a" type="f">Hemel</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Godts volck tot een spijs <rhyme label="b" type="m">ontfingh</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Doe het in een droef <rhyme label="a" type="f" corresp="#s1:l1">ghewemel</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Langhs de Wildernisse <rhyme label="b" type="m" corresp="#s1:l2">gingh</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wordt haer niet meer <rhyme label="a" type="f">uytgegoten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Van des Hemels milde <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Soo haest zy de vrught <rhyme label="a" type="f" corresp="#s2:l1">ghenoten</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Van het rijck beloofde <rhyme label="b" type="m" corresp="#s2:l2">Landt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Godes kind'ren gaen <rhyme label="a" type="f">beneden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Oock langhs weghen dor en <rhyme label="b" type="m">doof</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Daer de Heer door sijn <rhyme label="a" type="f" corresp="#s3:l1">goetheden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Haer begiftight met 't <rhyme label="b" type="m" corresp="#s3:l2">gheloof</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dat in 's Wereldts <rhyme label="a" type="f">tegenspoeden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En haer rampen suer en <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Doet haer flauwe Ziele <rhyme label="a" type="f" corresp="#s4:l1">voeden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Met gevoelen van <rhyme label="b" type="m" corresp="#s4:l2">ghenaedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Maer ter plaets daer Godt de <rhyme label="a" type="f">stroomen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Van des Hemels vreught <rhyme label="b" type="m">uytgiet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Op het hoopken van de <rhyme label="a" type="f" corresp="#s5:l1">vromen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Daer 't de saligheydt <rhyme label="b" type="m" corresp="#s5:l2">gheniet</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Leven zy niet meer als <rhyme label="a" type="f">vooren</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Door 't Gheloove: Maer het <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Kan daer naecktlijck sien en <rhyme label="a" type="f" corresp="#s6:l1">hooren</rhyme></l>
        <l id="s6:l4" met="4" type="+-">'t Geen daer 't door ghesalight <rhyme label="b" type="m" corresp="#s6:l2">werdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
