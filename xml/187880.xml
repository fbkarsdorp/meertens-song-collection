  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAnneer Abrams vrughtb're <rhyme label="a" type="m">stam</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Die Godt koos tot sijnen <rhyme label="b" type="f">erve</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">In het Melck-rijck Kana'n <rhyme label="a" type="m" corresp="#s1:l1">quam</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Na een veertigh-jarigh <rhyme label="b" type="f" corresp="#s1:l2">swerven</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Konden zy strack niet <rhyme label="b" type="f" corresp="#s1:l2">verderven</rhyme></l>
        <l id="s1:l6" met="4" type="+-">'t Oude Heydensche <rhyme label="c" type="m">geslacht</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Maer 't Volck Jacobs heeft <rhyme label="d" type="f">bekomen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Dat door klem van dienstb're <rhyme label="d" type="f" corresp="#s1:l7">toomen</rhyme></l>
        <l id="s1:l9" met="4" type="+-">Sy tot ootmoet sijn <rhyme label="c" type="m" corresp="#s1:l6">gebracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Doch zy mosten langhen <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s2:l2" met="4" type="+-">'tBastaerd-volck noch by haer <rhyme label="b" type="f">dulden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En noch uyt staen menigh <rhyme label="a" type="m" corresp="#s2:l1">strijt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Tot dat volck de wraeck-maet <rhyme label="b" type="f" corresp="#s2:l2">vulde</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Door haer gruwelijcke <rhyme label="b" type="f" corresp="#s2:l2">schulde</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En de Heere haer <rhyme label="c" type="m">verdreef</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Doen word Jacob rust <rhyme label="d" type="f">gegeven</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Want zy worden soo <rhyme label="d" type="f" corresp="#s2:l7">verdreven</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Datter niet een <rhyme label="c" type="m" corresp="#s2:l6">overbleef</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als de Springh-born van al 't <rhyme label="a" type="m">heyl</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Door sijn Gheest ons hert doet <rhyme label="b" type="f">roeren</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sterft strack niet ons leelijck <rhyme label="a" type="m" corresp="#s3:l1">feyl</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat ons van Godts wegh doet <rhyme label="b" type="f" corresp="#s3:l2">voeren</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Maer Godt doet de maght <rhyme label="b" type="f" corresp="#s3:l2">besnoeren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En ontneemt haer <rhyme label="c" type="m">d'heerschappy</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Dat het vleys had van te <rhyme label="d" type="f">vooren</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Eer de Mensch was <rhyme label="d" type="f" corresp="#s3:l7">weer-geboren</rhyme>:</l>
        <l id="s3:l9" met="4" type="+-">Boeyt de Lust in <rhyme label="c" type="m" corresp="#s3:l6">Slaverny</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maer de Sonde, alsoo <rhyme label="a" type="m">vast</rhyme></l>
        <l id="s4:l2" met="4" type="+-">In een Slaefschen-dienst <rhyme label="b" type="f">gevonden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Doet Godts volck noch <rhyme label="a" type="m" corresp="#s4:l1">overlast</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Strijdende tot alle <rhyme label="b" type="f" corresp="#s4:l2">stonden</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Doet veelmaels de Geest <rhyme label="b" type="f" corresp="#s4:l2">verwonden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Tot de Heer door de <rhyme label="c" type="m">Doot</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Drijft de Sonde uyt de <rhyme label="d" type="f">Sijnen</rhyme>:</l>
        <l id="s4:l8" met="4" type="+-">Daer is 't eynd van strijdt en <rhyme label="d" type="f" corresp="#s4:l7">pijnen</rhyme>.</l>
        <l id="s4:l9" met="4" type="+-">Hoe komt Heer uw gunst soo <rhyme label="c" type="m" corresp="#s4:l6">groot</rhyme>?</l>
      </lg>
    </lg>
  </text>
</song>
