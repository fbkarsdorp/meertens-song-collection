    <melody>Ik ging nog hedenmorgen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Jesu, lieve <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wanneer sal zyn den <rhyme label="b" type="m">dach</rhyme> ?</l>
        <l id="s1:l3" met="3" type="-+">Dat ick met meerder <rhyme label="a" type="f" corresp="#s1:l1">eere</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">U altijdt prijsen <rhyme label="b" type="m" corresp="#s1:l2">mach</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Siet aen, o ! Heere, mijn groote <rhyme label="c" type="m">noodt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hoe ick hier leef <rhyme label="d" type="f">ellendigh</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Als in een sta'ghe <rhyme label="c" type="m" corresp="#s1:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick ben te seer <rhyme label="a" type="f">ghebonden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Aen dees' verdorven <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dit lichaem snood' der <rhyme label="a" type="f" corresp="#s2:l1">sonden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Mijn Ziel te seer <rhyme label="b" type="m" corresp="#s2:l2">beswaert</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Ick kan, o ! Heer, gherusten <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Mijn vyandt is van <rhyme label="d" type="f">binnen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">En doet my staegh <rhyme label="c" type="m" corresp="#s2:l5">verdriet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe langh sal ick dus <rhyme label="a" type="f">swerven</rhyme> ?</l>
        <l id="s3:l2" met="3" type="-+">Op Aerd', een vreemd'lingh <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In bangh verdriet noch <rhyme label="a" type="f" corresp="#s3:l1">derven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">O ! Heer, u soet <rhyme label="b" type="m" corresp="#s3:l2">aenschijn</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Ick werd' alhier bespot, <rhyme label="c" type="m">ghehaet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Faem-roovelijck <rhyme label="d" type="f">beloghen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van 't overspeeligh <rhyme label="c" type="m" corresp="#s3:l5">zaedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Och ! door het groot <rhyme label="a" type="f">verlanghen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Om u te moghen <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">De tranen langhs mijn <rhyme label="a" type="f" corresp="#s4:l1">wanghen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als Peer'len dickwils <rhyme label="b" type="m" corresp="#s4:l2">vlien</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ick roep bedroeft hoe langhs, hoe <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">(Door liefde <rhyme label="d" type="f">aen-ghedreven</rhyme>)</l>
        <l id="s4:l7" met="3" type="-+">Komt haest'lijck, Jesu <rhyme label="c" type="m" corresp="#s4:l5">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ick sie u te <rhyme label="a" type="f">ghemoete</rhyme></l>
        <l id="s5:l2" met="3" type="-+">All' uyren van den <rhyme label="b" type="m">dach</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Met wensch, dat ick u <rhyme label="a" type="f" corresp="#s5:l1">groeten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Met vreucht omhelsen <rhyme label="b" type="m" corresp="#s5:l2">mach</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">O ! Heer, niet langher en <rhyme label="c" type="m">verbeyt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Siet hoe mijn Ziel <rhyme label="d" type="f">inwendigh</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Altijdt van liefde <rhyme label="c" type="m" corresp="#s5:l5">schreyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">GHy komt mijn herte <rhyme label="a" type="f">trecken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Om my u Trouw te <rhyme label="b" type="m">bie'n</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dit doet mijn Liefd' <rhyme label="a" type="f" corresp="#s6:l1">opwecken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Och ! mocht ick tot u <rhyme label="b" type="m" corresp="#s6:l2">vlie'n</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Uyt dit bedroefde <rhyme label="c" type="m">Tranen-dal</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Wanneer sal 't u <rhyme label="d" type="f">believen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dat ick op-varen <rhyme label="c" type="m" corresp="#s6:l5">sal</rhyme> ?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Och ! laet my haest <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">U groote <rhyme label="b" type="m">Majesteyt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Om Bruyloft eens te <rhyme label="a" type="f" corresp="#s7:l1">houwen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Die ghy al hebt <rhyme label="b" type="m" corresp="#s7:l2">bereyt</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Voor u seer dier-ghekochte <rhyme label="c" type="m">Schaer</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Dat ick die nu moet <rhyme label="d" type="f">derven</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Elck uyr schijnt my een <rhyme label="c" type="m" corresp="#s7:l5">Jaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghy hebt my al doen <rhyme label="a" type="f">smaecken</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Een voorsmaeck in 't <rhyme label="b" type="m">ghemoet</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Dit doet mijn Ziele <rhyme label="a" type="f" corresp="#s8:l1">haecken</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Na 't adersoetste <rhyme label="b" type="m" corresp="#s8:l2">Soet</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">De schoonste Schoonheyt by u <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En Rijckdom, Staet, en <rhyme label="d" type="f">Eeren</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">'t Welck ick hier alles <rhyme label="c" type="m" corresp="#s8:l5">mis</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">By u is vreucht ten <rhyme label="a" type="f">vollen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Die hier noyt oogh en <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Mijn Ziel is nu aen 't <rhyme label="a" type="f" corresp="#s9:l1">hollen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Ick kan die temmen <rhyme label="b" type="m" corresp="#s9:l2">niet</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Ey siet ! hoe vyerigh dat sy <rhyme label="c" type="m">woelt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Om datse maer een <rhyme label="d" type="f">Proefjen</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Van uwe gunst <rhyme label="c" type="m" corresp="#s9:l5">ghevoelt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
