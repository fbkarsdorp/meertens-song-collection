    <melody>Ik zie de morgenster</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="formal genres">formele genres</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Maria <rhyme label="a" type="f">Conyngynne</rhyme></l>
        <l id="s1:l2" met="3" type="-+">myn troest myn <rhyme label="b" type="m">toeuerlaet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">vercryghet my uwes kyndes <rhyme label="a" type="f" corresp="#s1:l1">mynne</rhyme></l>
        <l id="s1:l4" met="3" type="-+">ende berouwe voer myne <rhyme label="b" type="m" corresp="#s1:l2">mysdaet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soe wie yet sal <rhyme label="a" type="f">begynnen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">tot syn lof ende <rhyme label="b" type="m">eer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">staet hi niet inder <rhyme label="a" type="f" corresp="#s2:l1">mynnen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">het sal hem verdrieten <rhyme label="b" type="m" corresp="#s2:l2">seer</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Och had ic my <rhyme label="a" type="f">begeuen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">doe ic olt was x <rhyme label="b" type="m">jaer</rhyme></l>
        <l id="s3:l3" met="3" type="-+">in enen gheestelicken <rhyme label="a" type="f" corresp="#s3:l1">leuen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">ic waer syne mynne voel <rhyme label="b" type="m" corresp="#s3:l2">naere</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Nv mach ic wal <rhyme label="a" type="f">clagen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">ende bewenen myne <rhyme label="b" type="m">mysdaet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">dat ic aldus voel <rhyme label="a" type="f" corresp="#s4:l1">dagen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">verlaeren heb myn <rhyme label="b" type="m" corresp="#s4:l2">tyt</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Nv troest my <rhyme label="a" type="f">keyserynne</rhyme></l>
        <l id="s5:l2" met="3" type="-+">maria maget <rhyme label="b" type="m">reyne</rhyme></l>
        <l id="s5:l3" met="3" type="-+">sterket my mit uwes kyndes <rhyme label="a" type="f" corresp="#s5:l1">mynne</rhyme></l>
        <l id="s5:l4" met="3" type="-+">ende droefheit van my <rhyme label="b" type="m" corresp="#s5:l2">verjaget</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O mensche swyget van <rhyme label="a" type="f">bynnen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">swyget stylle ende hoert my <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">ende scarpet uwe <rhyme label="a" type="f" corresp="#s6:l1">synne</rhyme></l>
        <l id="s6:l4" met="3" type="-+">soe moogdy my <rhyme label="b" type="m" corresp="#s6:l2">verstaen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">V clagen ende v <rhyme label="a" type="f">begeren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">dat heb ic wal <rhyme label="b" type="m">gehoert</rhyme></l>
        <l id="s7:l3" met="3" type="-+">anxt ende droefheit v <rhyme label="a" type="f" corresp="#s7:l1">bekeren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">daer gi wel mynne voer <rhyme label="b" type="m" corresp="#s7:l2">toent</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ick sal v mynne <rhyme label="a" type="f">verweruen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">van Jhesus mynen <rhyme label="b" type="m">soen</rhyme></l>
        <l id="s8:l3" met="3" type="-+">draget in v herte lieuer te <rhyme label="a" type="f" corresp="#s8:l1">steruen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">dan tegen hem te <rhyme label="b" type="m" corresp="#s8:l2">doen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Och wie sal my <rhyme label="a" type="f">verlenen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">alsoe int herte te <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">och hoe sal ic <rhyme label="a" type="f" corresp="#s9:l1">verdienen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">guede synnen te <rhyme label="b" type="m" corresp="#s9:l2">ontfaen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Och mensche waer syn v <rhyme label="a" type="f">synnen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">hoe dwaeldy aldus <rhyme label="b" type="m">seer</rhyme></l>
        <l id="s10:l3" met="3" type="-+">wilt doch in v dit <rhyme label="a" type="f" corresp="#s10:l1">bekennen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">het heeft verdient v <rhyme label="b" type="m" corresp="#s10:l2">here</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ghy en cont dat niet <rhyme label="a" type="f">begeren</rhyme></l>
        <l id="s11:l2" met="3" type="-+">ist salich tsal v <rhyme label="b" type="m">geschien</rhyme></l>
        <l id="s11:l3" met="3" type="-+">mer trouwen soldet v <rhyme label="a" type="f" corresp="#s11:l1">deren</rhyme></l>
        <l id="s11:l4" met="3" type="-+">ten schiet v een noch en <rhyme label="b" type="m" corresp="#s11:l2">geen</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Waerom soe wildi <rhyme label="a" type="f">trueren</rhyme></l>
        <l id="s12:l2" met="3" type="-+">ende v verslaen dus <rhyme label="b" type="m">seer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">hadde god v niet <rhyme label="a" type="f" corresp="#s12:l1">vercaeren</rhyme></l>
        <l id="s12:l4" met="3" type="-+">gi en waert hier <rhyme label="b" type="m" corresp="#s12:l2">nvmmermeer</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Ghy moet wal in v <rhyme label="a" type="f">herte</rhyme></l>
        <l id="s13:l2" met="3" type="-+">trueren voer v <rhyme label="b" type="m">mysdaet</rhyme></l>
        <l id="s13:l3" met="3" type="-+">mer dencket dat myn <rhyme label="a" type="f" corresp="#s13:l1">steruen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">voel daer bauen <rhyme label="b" type="m" corresp="#s13:l2">gaet</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Lof ende eer sy v <rhyme label="a" type="f">maria</rhyme></l>
        <l id="s14:l2" met="3" type="-+">schoen edelle suuer <rhyme label="b" type="m">maget</rhyme></l>
        <l id="s14:l3" met="3" type="-+">wie hem tot v wyl <rhyme label="a" type="f" corresp="#s14:l1">keren</rhyme></l>
        <l id="s14:l4" met="3" type="-+">die en wort oec niet <rhyme label="b" type="m" corresp="#s14:l2">versaget</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
