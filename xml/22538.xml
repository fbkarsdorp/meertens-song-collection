    <melody>Ik wil mijzelf troosten en maken een moed</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wy willen ons gaen <rhyme label="a" type="f">verheffen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">boven allen aertschen <rhyme label="b" type="m">dinghen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ende climmen met onsen <rhyme label="c" type="f">ghedachten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">onder die <rhyme label="b" type="m" corresp="#s1:l2">seraphinnen</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Als wy hier boven <rhyme label="d" type="f">comen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wat is ons daer <rhyme label="e" type="m">bereyt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Met also grooter <rhyme label="f" type="f">waerdicheit</rhyme>?</l>
        <l id="s1:l8" met="3" type="-+">die heilyghe <rhyme label="e" type="m" corresp="#s1:l6">Drievoudicheit</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die Vader gheeft den <rhyme label="a" type="f">Soene</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die Soen den Heilighen <rhyme label="b" type="m">Gheest</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Och, wat mach ons <rhyme label="c" type="f">onbreken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van alsoe grooten <rhyme label="b" type="m" corresp="#s2:l2">feest</rhyme>!</l>
        <l id="s2:l5" met="3" type="-+">Soe coemt daer sielen <rhyme label="d" type="f">enghel</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ende brentse voer den <rhyme label="e" type="m">troen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Heer Jhesus, Croen daer <rhyme label="f" type="f">maechden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Gheeft dese siel haer <rhyme label="e" type="m" corresp="#s2:l6">loen</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die Moeder sprect totten <rhyme label="a" type="f">Soene</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">'Ontfant die waerde <rhyme label="b" type="m">bruyt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Al uut den dael daer <rhyme label="c" type="f">tranen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Is sy ghecomen <rhyme label="b" type="m" corresp="#s3:l2">uut</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Sy heeft soe veel <rhyme label="d" type="f">gheleden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Soe groote <rhyme label="e" type="m">banycheit</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat in haer was <rhyme label="f" type="f">vaerborghen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Dat gheeft sy nu te <rhyme label="e" type="m" corresp="#s3:l6">kennen'</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dan sprect die Gods Soen <rhyme label="a" type="f">selver</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">'Coemt, mijn vaerwende <rhyme label="b" type="m">bruyt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Uut uwen reynen <rhyme label="c" type="f">suchten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Is mijn een soet <rhyme label="b" type="m" corresp="#s4:l2">gheluyt</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Coemt, ghi selt <rhyme label="d" type="f">ontfanghen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Die croen is di <rhyme label="e" type="m">bereyt</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Du en seltse niet meer <rhyme label="f" type="f">lyden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Den strijt noch <rhyme label="e" type="m" corresp="#s4:l6">aerbeyt'</rhyme>..</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">'Du en seltste niet meer <rhyme label="a" type="f">lyden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Tis altemael <rhyme label="b" type="m">ghedaen</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Die wijnter is <rhyme label="c" type="f">gheleeden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die rijp is <rhyme label="b" type="m" corresp="#s5:l2">wechghegaen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Die wijnter is <rhyme label="d" type="f">gheleeden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die rijp is <rhyme label="e" type="m">wechghegaen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Die someer is <rhyme label="f" type="f">ghecomen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Die bloemmen sijn <rhyme label="e" type="m" corresp="#s5:l6">ondaen</rhyme>!'</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dan buycht die siel haer <rhyme label="a" type="f">needer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Met grooter <rhyme label="b" type="m">waerdicheit</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Te loven ende te <rhyme label="c" type="f">dancken</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Is sy altijt <rhyme label="b" type="m" corresp="#s6:l2">bereyt</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Ic byn soe cleyn te <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Den Heer van sijnre <rhyme label="e" type="m">minnen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Maer ic beveel my hier <rhyme label="f" type="f">boven</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Ondaer die <rhyme label="e" type="m" corresp="#s6:l6">seraphinnen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dan volleghen sy alte <rhyme label="a" type="f">samen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dat soete <rhyme label="b" type="m">Lammeekijn</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Dat is die Gods Soen <rhyme label="c" type="f">selver</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Gheloeft soe moet Hi <rhyme label="b" type="m" corresp="#s7:l2">sijn</rhyme>!</l>
        <l id="s7:l5" met="3" type="-+">Sy sijnghen <rhyme label="d" type="f">altesamen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Een ovaersoeten <rhyme label="e" type="m">sanck</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Si sijn ombevlect <rhyme label="f" type="f">ghebleeven</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Des heeft die Gods Soen <rhyme label="e" type="m" corresp="#s7:l6">danck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
