  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CAn Godts <rhyme label="a" type="f">lanckmoedigheydt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Noch wat hy u <rhyme label="a" type="f" corresp="#s1:l1">toeseydt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Door sijn grond'loose <rhyme label="b" type="f">zeghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">V aertsche stenigh <rhyme label="c" type="m">hart</rhyme></l>
        <l id="s1:l5" met="3" type="-+">In 's Weerelts net <rhyme label="c" type="m" corresp="#s1:l4">verwart</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Hier nimmermeer <rhyme label="b" type="f" corresp="#s1:l3">beweghen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soo siet eens hoe <rhyme label="a" type="f">verwoet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat hy den gheen <rhyme label="a" type="f" corresp="#s2:l1">verdoet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die hem noyt wilden <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Maer teghen recht en <rhyme label="c" type="m">reen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hier al sijn <rhyme label="c" type="m" corresp="#s2:l4">goedighe'en</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In haer wellust <rhyme label="b" type="f" corresp="#s2:l3">versmooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gaet dan sijn straf noch <rhyme label="a" type="f">min</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">V 't hart noch zielen <rhyme label="a" type="f" corresp="#s3:l1">in</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maer leeft ghy al u <rhyme label="b" type="f">selven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Soo sal u <rhyme label="c" type="m">onverdacht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Als die Godts raet <rhyme label="c" type="m" corresp="#s3:l4">veracht</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Het ongheluck <rhyme label="b" type="f" corresp="#s3:l3">bedelven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Want als sijn liefd' in <rhyme label="a" type="f">haet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Verkeert en omme <rhyme label="a" type="f" corresp="#s4:l1">slaet</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Sal hy sijn vyer-schaer <rhyme label="b" type="f">spannen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En met sijn straffe <rhyme label="c" type="m">handt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">V uyt het goede <rhyme label="c" type="m" corresp="#s4:l4">landt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Als 't snode caf <rhyme label="b" type="f" corresp="#s4:l3">uytwannen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O! onghelijcke <rhyme label="a" type="f">Lodt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Vereent te zijn met <rhyme label="a" type="f" corresp="#s5:l1">Godt</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Wiens goetheydt sonder end' <rhyme label="b" type="f">is</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Of met de Weereldt <rhyme label="c" type="m">snood</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Wiens uytgangh dat de <rhyme label="c" type="m" corresp="#s5:l4">doodt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Vol jammer en ellend' <rhyme label="b" type="f" corresp="#s5:l3">is</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Waer in wy zijn <rhyme label="a" type="f">veraert</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ons doch Heer <rhyme label="a" type="f" corresp="#s6:l1">wederbaert</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Op dat wy moghen <rhyme label="b" type="f">veyligh</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Eens keren weer tot <rhyme label="c" type="m">dy</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Daer 't al in vreughde <rhyme label="c" type="m" corresp="#s6:l4">zy</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Oprecht volmaeckt en <rhyme label="b" type="f" corresp="#s6:l3">heyligh</rhyme>.</l>
      </lg>
    </lg>
  </text>
