<song>
  <meta>
    <id>22826</id>
    <date>
      <year-start>1600</year-start>
      <year-end>1600</year-end>
    </date>
    <tags>
      <tag translation="Geuzen song">geuzenlied</tag>
    </tags>
    <melody>Si c'est pour mon pucelage</melody>
    <categories>
      <category translation="politics and history">politiek en geschiedenis</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Sweert niet/ ick wilt wel <rhyme label="a" type="f">ghelooven</rhyme>/</l>
        <l id="s1:l2" met="4" type="+-">O Papisten wreedt end' <rhyme label="b" type="m">fel</rhyme>/</l>
        <l id="s1:l3" met="4" type="+-">So ghy meester waert van't <rhyme label="b" type="m" corresp="#s1:l2">spel</rhyme>/</l>
        <l id="s1:l4" met="4" type="+-">Dat ghy ons haest soudt <rhyme label="a" type="f" corresp="#s1:l1">berooven</rhyme>/</l>
        <l id="s1:l5" met="4" type="+-">(Dorstich nae't onnosel <rhyme label="c" type="m">bloet</rhyme>)</l>
        <l id="s1:l6" met="4" type="+-">Van ons leven end' ons <rhyme label="c" type="m" corresp="#s1:l5">goet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Galge/ Sweert/ Vyer ende <rhyme label="a" type="f">Water</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Souden u Doctoren <rhyme label="b" type="m">zijn</rhyme>/</l>
        <l id="s2:l3" met="4" type="+-">Om te disputeren <rhyme label="b" type="m" corresp="#s2:l2">fijn</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Teghen al die u <rhyme label="a" type="f" corresp="#s2:l1">ghesnater</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Niet en stellen rechte <rhyme label="c" type="m">voort</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Boven Gods gheschreven <rhyme label="c" type="m" corresp="#s2:l5">Woort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Uwe Mayers souden <rhyme label="a" type="f">dwinghen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Ons/ die ghy Kickvorssen <rhyme label="b" type="m">heet</rhyme>/</l>
        <l id="s3:l3" met="4" type="+-">Oft het ons waer lief oft <rhyme label="b" type="m" corresp="#s3:l2">leet</rhyme>/</l>
        <l id="s3:l4" met="4" type="+-">In de woeste Zee te <rhyme label="a" type="f" corresp="#s3:l1">springhen</rhyme>/</l>
        <l id="s3:l5" met="4" type="+-">End'ons doen verslinden <rhyme label="c" type="m">daer</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Van den Spaenschen <rhyme label="c" type="m" corresp="#s3:l5">Oyevaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maer God sal de Vorssen <rhyme label="a" type="f">helpen</rhyme>/</l>
        <l id="s4:l2" met="4" type="+-">Dat sy u end' uw's <rhyme label="b" type="m">ghelijck</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Sullen jaghen over <rhyme label="b" type="m" corresp="#s4:l2">dijck</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Kruypt doch weder in u <rhyme label="a" type="f" corresp="#s4:l1">Schelpen</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Want de Leeu is op de <rhyme label="c" type="m">baen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Om den Arent te <rhyme label="c" type="m" corresp="#s4:l5">verslaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Om den Spinne loos te <rhyme label="a" type="f">jaghen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Wt het Weseltjen sijn <rhyme label="b" type="m">hol</rhyme>/</l>
        <l id="s5:l3" met="4" type="+-">Om de Coningh-moorders <rhyme label="b" type="m" corresp="#s5:l2">dol</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Hare straffe te doen <rhyme label="a" type="f" corresp="#s5:l1">draghen</rhyme>/</l>
        <l id="s5:l5" met="4" type="+-">Om ons/ die ghy ketters <rhyme label="c" type="m">naemt</rhyme>/</l>
        <l id="s5:l6" met="4" type="+-">Te beschermen/ soo't <rhyme label="c" type="m" corresp="#s5:l5">betaemt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Vrient ghy dreygt den <rhyme label="a" type="f">onvertsaegden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Die u snorcken acht als <rhyme label="b" type="m">kaf</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Treckt maer eens t'Mom-aensicht <rhyme label="b" type="m" corresp="#s6:l2">af</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">En Maetroos die laestmael <rhyme label="a" type="f" corresp="#s6:l1">waegden</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Dicht voor Gibraltaer de <rhyme label="c" type="m">kans</rhyme>/</l>
        <l id="s6:l6" met="4" type="+-">Salt oock durven doen <rhyme label="c" type="m" corresp="#s6:l5">althans</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maer indien men u mach <rhyme label="a" type="f">raden</rhyme>/</l>
        <l id="s7:l2" met="4" type="+-">Legt veel liever af den <rhyme label="b" type="m">haet</rhyme>/</l>
        <l id="s7:l3" met="4" type="+-">Die u maeckt dus <rhyme label="b" type="m" corresp="#s7:l2">obstinaet</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Draecht (eer't meer doet) <rhyme label="a" type="f" corresp="#s7:l1">onbeladen</rhyme></l>
        <l id="s7:l5" met="4" type="+-">De Levrey int hert <rhyme label="c" type="m">gheprent</rhyme>/</l>
        <l id="s7:l6" met="4" type="+-">Daer men Christus volck by <rhyme label="c" type="m" corresp="#s7:l5">kent</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Liefde meen ick/ die 't al <rhyme label="a" type="f">lijden</rhyme>/</l>
        <l id="s8:l2" met="4" type="+-">Hopen end' verdraghen <rhyme label="b" type="m">kan</rhyme>/</l>
        <l id="s8:l3" met="4" type="+-">Die wy moeten trecken <rhyme label="b" type="m" corresp="#s8:l2">an</rhyme>/</l>
        <l id="s8:l4" met="4" type="+-">Willen wy met God <rhyme label="a" type="f" corresp="#s8:l1">verblijden</rhyme>/</l>
        <l id="s8:l5" met="4" type="+-">Als die duyvels kind'ren <rhyme label="c" type="m">quaet</rhyme>/</l>
        <l id="s8:l6" met="4" type="+-">Scheyt alleen van't Godlijck <rhyme label="c" type="m" corresp="#s8:l5">zaet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Laet u ghelt end' eersucht <rhyme label="a" type="f">varen</rhyme>/</l>
        <l id="s9:l2" met="4" type="+-">Want die't al wil hebben/ <rhyme label="b" type="m">siet</rhyme>/</l>
        <l id="s9:l3" met="4" type="+-">Krijght op't lest ghemeynlijck <rhyme label="b" type="m" corresp="#s9:l2">niet</rhyme>.</l>
        <l id="s9:l4" met="4" type="+-">Dat ghy hebt/ wilt dat <rhyme label="a" type="f" corresp="#s9:l1">bewaren</rhyme>/</l>
        <l id="s9:l5" met="4" type="+-">En u selven niet <rhyme label="c" type="m">bedriecht</rhyme>/</l>
        <l id="s9:l6" met="4" type="+-">T'is quaet vanghen datter <rhyme label="c" type="m" corresp="#s9:l5">vliecht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Gheeft O Prins der Princen <rhyme label="a" type="f">goedich</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Vred'in onse daghen <rhyme label="b" type="m">doch</rhyme>/</l>
        <l id="s10:l3" met="4" type="+-">End' behoed' ons voor't <rhyme label="b" type="m" corresp="#s10:l2">bedroch</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Der tyrannen <rhyme label="a" type="f" corresp="#s10:l1">wrevelmoedich</rhyme>/</l>
        <l id="s10:l5" met="4" type="+-">Die de vryheyt van't <rhyme label="c" type="m">ghemoet</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Drucken willen onder <rhyme label="c" type="m" corresp="#s10:l5">voet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
