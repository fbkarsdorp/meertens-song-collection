    <melody>Gij mannen van verstand</melody>
    <categories>
      <category translation="amusement">vermaak</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHy milde <rhyme label="a" type="f">Open-borsten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En herten die seer <rhyme label="a" type="f" corresp="#s1:l1">dorsten</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Naer 't Lovens edel <rhyme label="b" type="m">nat</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">U loff sal ick <rhyme label="c" type="f">verhaelen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Tot roem van dese <rhyme label="b" type="m" corresp="#s1:l3">Stadt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met mijne pen <rhyme label="c" type="f" corresp="#s1:l4">af-maelen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Treedt aen met goy <rhyme label="a" type="f">manieren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">U hoofden wil ick <rhyme label="a" type="f" corresp="#s2:l1">Ã§ieren</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Met groen Lauriere <rhyme label="b" type="m">blaen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gestrickt met gulde <rhyme label="c" type="f">draeden</rhyme></l>
        <l id="s2:l5" met="3" type="-+">VVaer op geschreven <rhyme label="b" type="m" corresp="#s2:l3">staen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Sullen al u <rhyme label="c" type="f" corresp="#s2:l4">daeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Treckt heen naer Bacchus <rhyme label="a" type="f">Tempel</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Daer vindt ghy aenden <rhyme label="a" type="f" corresp="#s3:l1">drempel</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Vulcanus droogh <rhyme label="b" type="m">autaer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die om die heete <rhyme label="c" type="f">voncken</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Syn keel haudt gladt, en <rhyme label="b" type="m" corresp="#s3:l3">claer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met groot, en styve <rhyme label="c" type="f" corresp="#s3:l4">droncken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Om sulck Patroon te <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Moet ghy u lustigh <rhyme label="a" type="f" corresp="#s4:l1">weeren</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Elck steckt sijn pypken <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Laet neus, en mondt vry <rhyme label="c" type="f">roocken</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die al ten Hemel <rhyme label="b" type="m" corresp="#s4:l3">gaen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">'t Is Offerand' van <rhyme label="c" type="f" corresp="#s4:l4">smoocken</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Nergens is ons <rhyme label="a" type="f">gelijcken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ja 't moet voor ons al <rhyme label="a" type="f" corresp="#s5:l1">wycken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Als wy comen ter <rhyme label="b" type="m">baen</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Ons Capityn kan <rhyme label="c" type="f">drincken</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Jae dat een Schip <rhyme label="b" type="m" corresp="#s5:l3">gelaen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Daer van wel soude <rhyme label="c" type="f" corresp="#s5:l4">sincken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ons Lut'nant is een <rhyme label="a" type="f">quaentjen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Hy drinckt oock wel een <rhyme label="a" type="f" corresp="#s6:l1">vaentjen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Op eenen avont <rhyme label="b" type="m">uyt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">d'Alferis kan oock <rhyme label="c" type="f">buysen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Hy lap het in sijn <rhyme label="b" type="m" corresp="#s6:l3">huyt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Onder ons goey <rhyme label="c" type="f" corresp="#s6:l4">knuysen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">daer sijn oock drye <rhyme label="a" type="f">Sergeanten</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die sijn oock goy <rhyme label="a" type="f" corresp="#s7:l1">Kalanten</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Hun keel is altydt <rhyme label="b" type="m">droogh</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">Die konnen van hun <rhyme label="c" type="f">twegen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">De oogen recht om <rhyme label="b" type="m" corresp="#s7:l3">hoogh</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">De kannen lustigh <rhyme label="c" type="f" corresp="#s7:l4">vegen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ja al ons <rhyme label="a" type="f">Officieren</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die roepen, en die <rhyme label="a" type="f" corresp="#s8:l1">tieren</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Gestadigh om de <rhyme label="b" type="m">kan</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Ten kan hun niet <rhyme label="c" type="f">verveelen</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Sy vatten oock al <rhyme label="b" type="m" corresp="#s8:l3">an</rhyme></l>
        <l id="s8:l6" met="3" type="-+">By halven en by <rhyme label="c" type="f" corresp="#s8:l4">heelen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Oock allen ons <rhyme label="a" type="f">Soldaeten</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Konnen geen drincken <rhyme label="a" type="f" corresp="#s9:l1">laeten</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Elck weert hem als een <rhyme label="b" type="m">Helt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">De minste van hun <rhyme label="c" type="f">allen</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Staet als een Man in 't <rhyme label="b" type="m" corresp="#s9:l3">velt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Sy climmen op de <rhyme label="c" type="f" corresp="#s9:l4">wallen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Daer syn noch and're <rhyme label="a" type="f">Vorsten</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">VViens kelen altyt <rhyme label="a" type="f" corresp="#s10:l1">dorsten</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Naer rinsch, en Franscen <rhyme label="b" type="m">wyn</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Die't oock wel laeten <rhyme label="c" type="f">blijcken</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Die uyt ons Vaendel <rhyme label="b" type="m" corresp="#s10:l3">zyn</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Ons daerom niet <rhyme label="c" type="f" corresp="#s10:l4">gelijcken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Is jmandt nu <rhyme label="a" type="f">verlegen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Om tot vyf ses te <rhyme label="a" type="f" corresp="#s11:l1">vegen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Die spreeckt ons Hopman <rhyme label="b" type="m">aen</rhyme>;</l>
        <l id="s11:l4" met="3" type="-+">Hy sal u Dienaer <rhyme label="c" type="f">wesen</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Compt geeft u onder't <rhyme label="b" type="m" corresp="#s11:l3">Vaen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Van al dees <rhyme label="c" type="f" corresp="#s11:l4">uyt-gelesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
