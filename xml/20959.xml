  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ach! ach! ick heb <rhyme label="a" type="m">misdaen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ick ben van Godt <rhyme label="a" type="m" corresp="#s1:l1">vergaen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ick ben van vreught <rhyme label="b" type="m">ontbloot</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Mijn ziel is <rhyme label="b" type="m" corresp="#s1:l3">doodt</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Och of ick we'er eens graty <rhyme label="c" type="m">vondt</rhyme>!</l>
        <l id="s1:l6" met="4" type="-+">'k Sou my begeven // tot beter <rhyme label="d" type="f">leven</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Op deser <rhyme label="c" type="m" corresp="#s1:l5">stondt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Fy 's lichaems <rhyme label="a" type="m">dartelheyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Fy 's werelts <rhyme label="a" type="m" corresp="#s2:l1">ydelheyt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Fy kostelijck <rhyme label="b" type="m">Cieraed</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Ick u <rhyme label="b" type="m" corresp="#s2:l3">verlaet</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Adieu, adieu mijn vrinden <rhyme label="c" type="m">all'</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">In wiens by-wesen // ick heb voor <rhyme label="d" type="f">desen</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Geweest soo <rhyme label="c" type="m" corresp="#s2:l5">mal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick nemen wil mijn <rhyme label="a" type="m">keer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Tot d'alderhoochsten <rhyme label="a" type="m" corresp="#s3:l1">Heer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dees wesen sal mijn <rhyme label="b" type="m">lust</rhyme></l>
        <l id="s3:l4" met="2" type="-+">En all' mijn <rhyme label="b" type="m" corresp="#s3:l3">rust</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Ick hoop, my die ontfermen <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Die is gekomen // die is <rhyme label="d" type="f">vernomen</rhyme></l>
        <l id="s3:l7" met="2" type="-+">In 't Beesten <rhyme label="c" type="m" corresp="#s3:l5">stal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Soo heeft ons Godt <rhyme label="a" type="m">bemindt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Soo heeft ons Godt <rhyme label="a" type="m" corresp="#s4:l1">gesint</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat boven alle <rhyme label="b" type="m">wensch</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Hy werden <rhyme label="b" type="m" corresp="#s4:l3">mensch</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">'t Verloren schaep heeft Godt <rhyme label="c" type="m">gesocht</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">Door sware slagen // door 't kruys te <rhyme label="d" type="f">dragen</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Heeft hy 't <rhyme label="c" type="m" corresp="#s4:l5">gekocht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ach! ick verlooren <rhyme label="a" type="m">ben</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Geweest, (soo ick <rhyme label="a" type="m" corresp="#s5:l1">beken</rhyme>)</l>
        <l id="s5:l3" met="3" type="-+">Ick neem tot Godt mijn <rhyme label="b" type="m">loop</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">InGodt ick <rhyme label="b" type="m" corresp="#s5:l3">hoop</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Bewaerdight, Heer! te wasschen <rhyme label="c" type="m">af</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Mijn vuyle sonden // mijn diepe <rhyme label="d" type="f">wonden</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Ey! weest niet <rhyme label="c" type="m" corresp="#s5:l5">straf</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Zijt welkom, welkom <rhyme label="a" type="m">we'er</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ghy Siel, die zijt soo <rhyme label="a" type="m" corresp="#s6:l1">veer</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Geweken van het <rhyme label="b" type="m">padt</rhyme></l>
        <l id="s6:l4" met="2" type="-+">En 's Hemels <rhyme label="b" type="m" corresp="#s6:l3">Stadt</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Laet u geschrey, laet u <rhyme label="c" type="m">gesteen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">'k Sal u ontfermen // 'k sal u <rhyme label="d" type="f">erbermen</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Zijt wel te <rhyme label="c" type="m" corresp="#s6:l5">vre'en</rhyme>.</l>
      </lg>
    </lg>
  </text>
