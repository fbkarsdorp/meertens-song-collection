    <melody>Och lig dij nu en slaapt</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OCh ligdy nu en <rhyme label="a" type="m">slaept</rhyme></l>
        <l id="s1:l2" met="3" type="-+">O leuende Gods <rhyme label="b" type="f">sone</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Och ligdy nu en <rhyme label="a" type="m" corresp="#s1:l1">slaept</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Hier bouen inden <rhyme label="b" type="f" corresp="#s1:l2">throone</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Staet op en weest <rhyme label="c" type="m">bereet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ende wilt toch tot mi <rhyme label="d" type="f">comen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Thoont ons v <rhyme label="c" type="m" corresp="#s1:l5">goddelicheyt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">V godheyt is so <rhyme label="d" type="f" corresp="#s1:l6">schoone</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wie clopt daer aen die <rhyme label="a" type="m">muere</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Om mijn <rhyme label="b" type="f">ghenadichede</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Die doot wert mi so <rhyme label="a" type="m" corresp="#s2:l1">suere</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Eer ick ghemaecte <rhyme label="b" type="f" corresp="#s2:l2">vrede</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Dent thoren was so <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hi dede den hemel <rhyme label="d" type="f">sluyten</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Leert liden totter <rhyme label="c" type="m" corresp="#s2:l5">doot</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Oft ghi moet bliuen <rhyme label="d" type="f" corresp="#s2:l6">buyten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O Iesu lieue <rhyme label="a" type="m">heere</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hoe sal ick bi v <rhyme label="b" type="f">gheraekn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dat leuen lust mi so <rhyme label="a" type="m" corresp="#s3:l1">seere</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ick en mach geen liden <rhyme label="b" type="f" corresp="#s3:l2">smaken</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Het dunct mi swaren <rhyme label="c" type="m">arbeyt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Om troost so ben ick <rhyme label="d" type="f">comen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Thoont ons v <rhyme label="c" type="m" corresp="#s3:l5">goddelicheyt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">V godheyt is so <rhyme label="d" type="f" corresp="#s3:l6">schone</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghi waent dat ic ben <rhyme label="a" type="m">slapen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En dat ick v niet en <rhyme label="b" type="f">kinne</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ghi moet v seluen <rhyme label="a" type="m" corresp="#s4:l1">laten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ende liden doer die <rhyme label="b" type="f" corresp="#s4:l2">minne</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Ick moeste so veel <rhyme label="c" type="m">liden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Soude ick den hemel <rhyme label="d" type="f">ontsluyten</rhyme></l>
        <l id="s4:l7" met="3" type="-+">In liden moet ghe <rhyme label="c" type="m" corresp="#s4:l5">verbliden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Oft ghi moet bliuen <rhyme label="d" type="f" corresp="#s4:l6">buyten</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Iesu gheminde <rhyme label="a" type="m">heere</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hoe mocht v steruens <rhyme label="b" type="f">lusten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dat cruys woech v so <rhyme label="a" type="m" corresp="#s5:l1">seere</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ende ghi en mocht niet <rhyme label="b" type="f" corresp="#s5:l2">rusten</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Om onser <rhyme label="c" type="m">salicheyt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Droecht ghi een doornen <rhyme label="d" type="f">crone</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Thoont ons v <rhyme label="c" type="m" corresp="#s5:l5">goddelicheyt</rhyme></l>
        <l id="s5:l8" met="3" type="-+">V godheyt is so <rhyme label="d" type="f" corresp="#s5:l6">schone</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Al stont ghi daer tot <rhyme label="a" type="m">morghen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">So en moechdy niet <rhyme label="b" type="f">versinnen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Oft in v herte <rhyme label="a" type="m" corresp="#s6:l1">verborghen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Hoe dat mi dwanc die <rhyme label="b" type="f" corresp="#s6:l2">minne</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Op dat ghi souot sijn <rhyme label="c" type="m">ontlast</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Ende hemelrijc <rhyme label="d" type="f">ontsluyten</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Dus moet ghi liden <rhyme label="c" type="m" corresp="#s6:l5">vast</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Oft ghi moet bliuen <rhyme label="d" type="f" corresp="#s6:l6">buyten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ick sie den lichten <rhyme label="a" type="m">dach</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Al doer die wolcken <rhyme label="b" type="f">dringhen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Ick sie dat niemant en <rhyme label="a" type="m" corresp="#s7:l1">mach</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Den wille Gods <rhyme label="b" type="f" corresp="#s7:l2">volbringhen</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Hi en hebbe <rhyme label="c" type="m">verduldicheyt</rhyme></l>
        <l id="s7:l6" met="3" type="-+">In liden hoe dat <rhyme label="d" type="f">come</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Thoont ons v <rhyme label="c" type="m" corresp="#s7:l5">goddelicheyt</rhyme></l>
        <l id="s7:l8" met="3" type="-+">V godheyt is so <rhyme label="d" type="f" corresp="#s7:l6">schone</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghi waent met alder <rhyme label="a" type="m">lost</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Des werelts tot mi te <rhyme label="b" type="f">gheraken</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Het heeft my meer <rhyme label="a" type="m" corresp="#s8:l1">ghecost</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Hemelrijck te <rhyme label="b" type="f" corresp="#s8:l2">smaken</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Druck / liden / ende <rhyme label="c" type="m">seer</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Doet hemelrijck <rhyme label="d" type="f">ontsluyten</rhyme>.</l>
        <l id="s8:l7" met="3" type="-+">Ghi moet noch liden <rhyme label="c" type="m" corresp="#s8:l5">meer</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Oft ghi moet bliuen <rhyme label="d" type="f" corresp="#s8:l6">buyten</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Die liefste die ick <rhyme label="a" type="m">weet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Die woont in <rhyme label="b" type="f">hemelrijcke</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Om hem ben ick <rhyme label="a" type="m" corresp="#s9:l1">bereet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Te liden <rhyme label="b" type="f" corresp="#s9:l2">blidelijcke</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Pine / druck / ende <rhyme label="c" type="m">leyt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Op dat ick v heb te <rhyme label="d" type="f">loone</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Thoont ons v <rhyme label="c" type="m" corresp="#s9:l5">goddelicheyt</rhyme></l>
        <l id="s9:l8" met="3" type="-+">V godheyt is so <rhyme label="d" type="f" corresp="#s9:l6">schoone</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
