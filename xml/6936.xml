  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAer mach mijn Herdertje <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die mijn zijn liefde soo vaeck voor <rhyme label="a" type="f" corresp="#s1:l1">desen</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Met veel <rhyme label="b" type="m">ghetraen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">By dees Fonteyn heeft doen <rhyme label="b" type="m" corresp="#s1:l3">verstaen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wiens zieltgen met swaer <rhyme label="c" type="m">verdriet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Beladen ick altoos <rhyme label="c" type="m" corresp="#s1:l5">liet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Al wat hy sey // al sijn <rhyme label="d" type="m">gheschrey</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Kon mijn hertjen beweghen <rhyme label="c" type="m" corresp="#s1:l5">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Eens sat ick onder de <rhyme label="a" type="f">Boomen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Daer ick hem sach van verre <rhyme label="a" type="f" corresp="#s2:l1">comen</rhyme></l>
        <l id="s2:l3" met="2" type="-+">En al zijn <rhyme label="b" type="m">Vee</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Truerden ghelijck den Herder <rhyme label="b" type="m" corresp="#s2:l3">dee</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hy swierden aen elcken <rhyme label="c" type="m">cant</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Sijn Stafken schreef in het <rhyme label="c" type="m" corresp="#s2:l5">sant</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Riep met gheclach // ach Phillis <rhyme label="d" type="m">ach</rhyme>:</l>
        <l id="s2:l8" met="4" type="+-">Laet ons vinden der liefden <rhyme label="c" type="m" corresp="#s2:l5">bant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer laes sijn clachtighe <rhyme label="a" type="f">woorden</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Vluchtighe Phillis niet en <rhyme label="a" type="f" corresp="#s3:l1">hoorden</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Iae liep soo <rhyme label="b" type="m">ras</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat bsy hem uyt tghesichte <rhyme label="b" type="m" corresp="#s3:l3">was</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Doen stelden ick my int <rhyme label="c" type="m">Veldt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Mijn hertjen was seer <rhyme label="c" type="m" corresp="#s3:l5">ontstelt</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">t'Roude my seer // dat ick al <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Most bedroeven den jonghen <rhyme label="c" type="m" corresp="#s3:l5">Heldt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den Heldt wiens lustighe <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Wackere tong en fiere <rhyme label="a" type="f" corresp="#s4:l1">seden</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Wiens soet <rhyme label="b" type="m">ghesang</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Stilleken my tot minnen <rhyme label="b" type="m" corresp="#s4:l3">dwang</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Nu leef ick in groote <rhyme label="c" type="m">smert</rhyme></l>
        <l id="s4:l6" met="3" type="-+">En blaekende voet mijn <rhyme label="c" type="m" corresp="#s4:l5">hert</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Tluyde ghetier // int <rhyme label="d" type="m">Vaghevier</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Daer mijn Herder ghepynicht <rhyme label="c" type="m" corresp="#s4:l5">werdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer laes d'ellendighe <rhyme label="a" type="f">Vrouwen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Lydende moeten by haer <rhyme label="a" type="f" corresp="#s5:l1">houwen</rhyme></l>
        <l id="s5:l3" met="2" type="-+">t'Inwendich <rhyme label="b" type="m">vyer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat haer ghebracht heeft in <rhyme label="b" type="m" corresp="#s5:l3">dangier</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Daer daghelicx met <rhyme label="c" type="m">gheween</rhyme></l>
        <l id="s5:l6" met="3" type="-+">De Herdren int <rhyme label="c" type="m" corresp="#s5:l5">ghemeen</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Klaegen het leet // dat liefde haer <rhyme label="d" type="m">deed</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">En sy hebbent soo lang <rhyme label="c" type="m" corresp="#s5:l5">gheleen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Quam oock mijn Herdertjen <rhyme label="a" type="f">claghen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Quam hy oock om mijn liefde <rhyme label="a" type="f" corresp="#s6:l1">vraghen</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Sijn droeve <rhyme label="b" type="m">smert</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Haestelijck dan verlichtet <rhyme label="b" type="m" corresp="#s6:l3">wert</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Om herrewaerts liefde hem <rhyme label="c" type="m">dwang</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Maer luyster, ick hoor <rhyme label="c" type="m" corresp="#s6:l5">ghesang</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">t'Is Damon siet // hier in dit <rhyme label="d" type="m">riet</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Wil hooren sijn droeve <rhyme label="c" type="m" corresp="#s6:l5">liet</rhyme>.</l>
      </lg>
    </lg>
  </text>
