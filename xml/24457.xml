    <melody>Ik draag dat lijden verborgen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Jc drage dat lyden <rhyme label="a" type="f">verborgen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">besloten in mijnen <rhyme label="b" type="m">gront</rhyme></l>
        <l id="s1:l3" met="3" type="-+">van tsauonts totter <rhyme label="a" type="f" corresp="#s1:l1">morgen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">worde ic daer af <rhyme label="b" type="m" corresp="#s1:l2">gewont</rhyme></l>
        <l id="s1:l5" met="3" type="-+">daer comt so menich <rhyme label="c" type="f">versuchten</rhyme></l>
        <l id="s1:l6" met="3" type="-+">al wter herten <rhyme label="d" type="m">mijn</rhyme></l>
        <l id="s1:l7" met="3" type="-+">waer sal ic henen <rhyme label="c" type="f" corresp="#s1:l5">vluchten</rhyme></l>
        <l id="s1:l8" met="3" type="-+">ten mach niet anders <rhyme label="d" type="m" corresp="#s1:l6">syn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Jc had eenen vrindt <rhyme label="a" type="f">verkoren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">en nv en vindt icx <rhyme label="b" type="m">nitt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">die vrintschap is <rhyme label="a" type="f" corresp="#s2:l1">verloren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">ontro  is mij <rhyme label="b" type="m" corresp="#s2:l2">geschiet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">ic ben alleen in <rhyme label="c" type="f">lyden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">och lacij ic ben <rhyme label="d" type="m">alleen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">hoe mach ic mij <rhyme label="c" type="f" corresp="#s2:l5">verblyden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">der trouwen en vinde ic <rhyme label="d" type="m" corresp="#s2:l6">geen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O goede heere der <rhyme label="a" type="f">heeren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">wilt mij in staeden <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">waer sal ic henen <rhyme label="a" type="f" corresp="#s3:l1">keeren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">ic ben met dr c <rhyme label="b" type="m" corresp="#s3:l2">bevaen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">och wat sal ic <rhyme label="c" type="f">beginnen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">dat en weet ic waerlycx <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">al in mijn herte van <rhyme label="c" type="f" corresp="#s3:l5">binnen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">zo lide ic zoe swaeren <rhyme label="d" type="m" corresp="#s3:l6">verdriet</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hier  m heb ic mede <rhyme label="a" type="f">doogen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">met die in lijden <rhyme label="b" type="m">syn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">hebt altyt god voer <rhyme label="a" type="f" corresp="#s4:l1">oogen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">der menschen tro  is <rhyme label="b" type="m" corresp="#s4:l2">cleyn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">och minne der <rhyme label="c" type="f">creatueren</rhyme></l>
        <l id="s4:l6" met="3" type="-+">wat hebdij mij <rhyme label="d" type="m">gedaen</rhyme></l>
        <l id="s4:l7" met="3" type="-+">om v soe moet ic <rhyme label="c" type="f" corresp="#s4:l5">trueren</rhyme></l>
        <l id="s4:l8" met="3" type="-+">en weenen soe menigen <rhyme label="d" type="m" corresp="#s4:l6">traen</rhyme>.</l>
      </lg>
    </lg>
  </text>
