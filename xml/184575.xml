  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Komt mijn Mond wild u <rhyme label="a" type="f">bereyden</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Te <rhyme label="a" type="f" corresp="#s1:l1">verbreyden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Komt verleend my nieuwe <rhyme label="b" type="m">stof</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Van de Sluysche <rhyme label="c" type="f">Vissers-Neering</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s1:l4">hanteering</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En haar wijd vermaarde <rhyme label="b" type="m" corresp="#s1:l3">Lof</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Kon ik al-te-maal <rhyme label="a" type="f">verzinnen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Die moet <rhyme label="a" type="f" corresp="#s2:l1">winnen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Haaren kost van den <rhyme label="b" type="m">Zee-man</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Van hem die daar is ter <rhyme label="c" type="f">degen</rhyme>;</l>
        <l id="s2:l5" met="2" type="+-">Aan <rhyme label="c" type="f" corresp="#s2:l4">gelegen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Ik haar nauw’lijks noemen <rhyme label="b" type="m" corresp="#s2:l3">kan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Den Scheep-maaker gaat men <rhyme label="a" type="f">halen</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Zonder <rhyme label="a" type="f" corresp="#s3:l1">falen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die hem een Schip maakt van <rhyme label="b" type="m">Hout</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Daar is ’t dat hy mee gaat <rhyme label="c" type="f">vaaren</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Op de <rhyme label="c" type="f" corresp="#s3:l4">Baaren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En daar hy de Zee mee <rhyme label="b" type="m" corresp="#s3:l3">bouwt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maar of Zeeman zo gaat <rhyme label="a" type="f">bouwen</rhyme>?</l>
        <l id="s4:l2" met="2" type="+-">Zijn <rhyme label="a" type="f" corresp="#s4:l1">vertrouwen</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Dat moet staan op Godt den <rhyme label="b" type="m">Heer</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Dat hy in des <rhyme label="c" type="f">Werelds-baaren</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Zo mag <rhyme label="c" type="f" corresp="#s4:l4">vaaren</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Wel behouden in ’t <rhyme label="b" type="m" corresp="#s4:l3">Onweer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Den Smit moet, verstaat wel <rhyme label="a" type="f">dezen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Hier toe <rhyme label="a" type="f" corresp="#s5:l1">wezen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Die Ankers maakt, tot het <rhyme label="b" type="m">Schip</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Dat den Visscher in zijn <rhyme label="c" type="f">zaken</rhyme>:</l>
        <l id="s5:l5" met="2" type="+-">Niet zou <rhyme label="c" type="f" corresp="#s5:l4">raken</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Op een droogte of een <rhyme label="b" type="m" corresp="#s5:l3">Klip</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wild ô Mensch! hier wel op <rhyme label="a" type="f">letten</rhyme></l>
        <l id="s6:l2" met="2" type="+-">En vast <rhyme label="a" type="f" corresp="#s6:l1">zetten</rhyme></l>
        <l id="s6:l3" met="4" type="+-">U Ankers, de waare <rhyme label="b" type="m">hoop</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">Dat gy standvastig meugt <rhyme label="c" type="f">ryen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Zonder <rhyme label="c" type="f" corresp="#s6:l4">myen</rhyme>?</l>
        <l id="s6:l6" met="4" type="+-">In de Zee van ’t <rhyme label="b" type="m" corresp="#s6:l3">Werelds-loop</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wild u kabel ’t waar <rhyme label="a" type="f">geloove</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Noyt <rhyme label="a" type="f" corresp="#s7:l1">verdoove</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Maar let op dees Lieden <rhyme label="b" type="m">werk</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Wild daar wel te regt op <rhyme label="c" type="f">agten</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s7:l4">betragten</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Na Godt, ’t voorgesteeken <rhyme label="b" type="m" corresp="#s7:l3">merk</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Den Bakker en Brouwer <rhyme label="a" type="f">t’zame</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Zeer <rhyme label="a" type="f" corresp="#s8:l1">bekwame</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Hy vooral ook van doen <rhyme label="b" type="m">heeft</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">Want met Bakken en met <rhyme label="c" type="f">Brouwen</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Moet men <rhyme label="c" type="f" corresp="#s8:l4">houwen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">’t Leven dat de Heer ons <rhyme label="b" type="m" corresp="#s8:l3">geeft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Maar of wy dat Brood al <rhyme label="a" type="f">kregen</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">’t Waar en <rhyme label="a" type="f" corresp="#s9:l1">Zegen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Bid voor al dat Godt den <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s9:l4" met="4" type="+-">’t Water en het Brood des <rhyme label="c" type="f">Leven</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Ons wil <rhyme label="c" type="f" corresp="#s9:l4">geven</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Dat ons hong’ren doet niet <rhyme label="b" type="m" corresp="#s9:l3">meer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Den Kuyper die moet zeer <rhyme label="a" type="f">rede</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Hem ook <rhyme label="a" type="f" corresp="#s10:l1">mede</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Connen maaken in de <rhyme label="b" type="m">Band</rhyme>:</l>
        <l id="s10:l4" met="4" type="+-">Al waar zy met goed <rhyme label="c" type="f">fatzoene</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-">Visch in <rhyme label="c" type="f" corresp="#s10:l4">doene</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Op datze niet raakt <rhyme label="b" type="m" corresp="#s10:l3">t’schand</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Wild ô Mensch! u Hert en <rhyme label="a" type="f">Handen</rhyme></l>
        <l id="s11:l2" met="2" type="+-">Regt toe <rhyme label="a" type="f" corresp="#s11:l1">banden</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">En houd zuyver van <rhyme label="b" type="m">gemoed</rhyme>:</l>
        <l id="s11:l4" met="4" type="+-">Dat de Heer u Hert van <rhyme label="c" type="f">binnen</rhyme>,</l>
        <l id="s11:l5" met="2" type="+-">Reyn mag <rhyme label="c" type="f" corresp="#s11:l4">vinden</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Daarom na zijn wille <rhyme label="b" type="m" corresp="#s11:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Den Zeyl-maaker werd <rhyme label="a" type="f">ontboden</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">Is van <rhyme label="a" type="f" corresp="#s12:l1">noden</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Die tot het Schip Zeylen <rhyme label="b" type="m">maakt</rhyme>:</l>
        <l id="s12:l4" met="4" type="+-">Waar mede de Visschers na veel <rhyme label="c" type="f">zeylen</rhyme>,</l>
        <l id="s12:l5" met="2" type="+-">En veel <rhyme label="c" type="f" corresp="#s12:l4">peylen</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">In gewenste Haven <rhyme label="b" type="m" corresp="#s12:l3">raakt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Leerd ô Mensch! u Zeylen <rhyme label="a" type="f">zetten</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">En regt <rhyme label="a" type="f" corresp="#s13:l1">letten</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Dat u wandel niet <rhyme label="b" type="m">seyld</rhyme>:</l>
        <l id="s13:l4" met="4" type="+-">Dat gy u na lange <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-">Meugt <rhyme label="c" type="f" corresp="#s13:l4">begeven</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">En in ’s Hemels Haven <rhyme label="b" type="m" corresp="#s13:l3">zeyld</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Den Schoen-maaker zijne <rhyme label="a" type="f">Name</rhyme>,</l>
        <l id="s14:l2" met="2" type="+-">Zeer <rhyme label="a" type="f" corresp="#s14:l1">bekwame</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Ik ook niet vergeeten <rhyme label="b" type="m">moet</rhyme>:</l>
        <l id="s14:l4" met="4" type="+-">Want Hooze en Schoenen <rhyme label="c" type="f">reene</rhyme>,</l>
        <l id="s14:l5" met="2" type="+-">Groot en <rhyme label="c" type="f" corresp="#s14:l4">kleene</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Maakt hy voor de Visschers <rhyme label="b" type="m" corresp="#s14:l3">goed</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Let ô Mensche! hoe gy die <rhyme label="a" type="f">Schoene</rhyme></l>
        <l id="s15:l2" met="2" type="+-">Hebt van <rhyme label="a" type="f" corresp="#s15:l1">doene</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Waar mee gy u doen <rhyme label="b" type="m">bereyd</rhyme>:</l>
        <l id="s15:l4" met="4" type="+-">Leydet dit regt tot de <rhyme label="c" type="f">vrede</rhyme>,</l>
        <l id="s15:l5" met="2" type="+-">En daar <rhyme label="c" type="f" corresp="#s15:l4">mede</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">’s Euangeliums <rhyme label="b" type="m" corresp="#s15:l3">waardigheyd</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Blok-maakers moeten <rhyme label="a" type="f">repareren</rhyme>,</l>
        <l id="s16:l2" met="2" type="+-">t’Zijner <rhyme label="a" type="f" corresp="#s16:l1">eeren</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Pompen, Bloks, zeer sterk en <rhyme label="b" type="m">hegt</rhyme>:</l>
        <l id="s16:l4" met="4" type="+-">En Compassen die de <rhyme label="c" type="f">Menschen</rhyme>,</l>
        <l id="s16:l5" met="2" type="+-">Na haar <rhyme label="c" type="f" corresp="#s16:l4">wenschen</rhyme>,</l>
        <l id="s16:l6" met="4" type="+-">Wederom brengen te <rhyme label="b" type="m" corresp="#s16:l3">regt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Wild zo door dees Wereld <rhyme label="a" type="f">zeylen</rhyme>,</l>
        <l id="s17:l2" met="2" type="+-">Zonder <rhyme label="a" type="f" corresp="#s17:l1">feylen</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">Na Christi het waar <rhyme label="b" type="m">Compas</rhyme>:</l>
        <l id="s17:l4" met="4" type="+-">Dat wy na zorgvuldig <rhyme label="c" type="f">waaken</rhyme>,</l>
        <l id="s17:l5" met="2" type="+-">Mogen <rhyme label="c" type="f" corresp="#s17:l4">raaken</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">In dees Hemels Haven <rhyme label="b" type="m" corresp="#s17:l3">ras</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Mande-makers waard om <rhyme label="a" type="f">prijzen</rhyme>,</l>
        <l id="s18:l2" met="2" type="+-">Moet men <rhyme label="a" type="f" corresp="#s18:l1">Rijzen</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Korven ende Bennen <rhyme label="b" type="m">goed</rhyme>:</l>
        <l id="s18:l4" met="4" type="+-">Maaken voor den Visscher <rhyme label="c" type="f">goedig</rhyme>,</l>
        <l id="s18:l5" met="2" type="+-">Daar hy <rhyme label="c" type="f" corresp="#s18:l4">spoedig</rhyme></l>
        <l id="s18:l6" met="4" type="+-">Na zijn wille Visch in <rhyme label="b" type="m" corresp="#s18:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Gelijk als de Rijzen <rhyme label="a" type="f">t’zamen</rhyme>,</l>
        <l id="s19:l2" met="2" type="+-">Zeer <rhyme label="a" type="f" corresp="#s19:l1">bekwame</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">Aan malkander zijn <rhyme label="b" type="m">geschaakt</rhyme>:</l>
        <l id="s19:l4" met="4" type="+-">Laat u deugd zo by <rhyme label="c" type="f">malkander</rhyme>,</l>
        <l id="s19:l5" met="2" type="+-">d’Een aan <rhyme label="c" type="f" corresp="#s19:l4">d’ander</rhyme>,</l>
        <l id="s19:l6" met="4" type="+-">Tot Godts eere zijn <rhyme label="b" type="m" corresp="#s19:l3">gemaakt</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Merkt ô Mensch! hoe gy zijt <rhyme label="a" type="f">schuldig</rhyme>,</l>
        <l id="s20:l2" met="2" type="+-">Om <rhyme label="a" type="f" corresp="#s20:l1">zorgvuldig</rhyme>,</l>
        <l id="s20:l3" met="4" type="+-">Te verrigten prijzen <rhyme label="b" type="m">eer</rhyme>:</l>
        <l id="s20:l4" met="4" type="+-">Aan Godt, die u dees <rhyme label="c" type="f">Neering</rhyme>,</l>
        <l id="s20:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s20:l4">hanteering</rhyme>,</l>
        <l id="s20:l6" met="4" type="+-">Zo rijk’lijk laat komen <rhyme label="b" type="m" corresp="#s20:l3">neer</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Oorlof houd het my ten <rhyme label="a" type="f">beste</rhyme>,</l>
        <l id="s21:l2" met="2" type="+-">Voor het <rhyme label="a" type="f" corresp="#s21:l1">leste</rhyme>,</l>
        <l id="s21:l3" met="4" type="+-">Heb ik my hier in <rhyme label="b" type="m">vergist</rhyme>:</l>
        <l id="s21:l4" met="4" type="+-">Ging ik ymand hier niet <rhyme label="c" type="f">noemen</rhyme>,</l>
        <l id="s21:l5" met="2" type="+-">Nog te <rhyme label="c" type="f" corresp="#s21:l4">roemen</rhyme>,</l>
        <l id="s21:l6" met="4" type="+-">Denkt dat ik niet beter <rhyme label="b" type="m" corresp="#s21:l3">wist</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
