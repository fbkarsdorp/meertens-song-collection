  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">SIet Amphion <rhyme label="a" type="m">vliedt</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Naer het woudt der <rhyme label="b" type="f">dieren</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Singhend' op sijn <rhyme label="b" type="f" corresp="#s1:l2">liere</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Een seer doevich <rhyme label="a" type="m" corresp="#s1:l1">liedt</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Ach! ach! schoon <rhyme label="c" type="f">Clarinde</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Wildy niet een <rhyme label="d" type="m">mael</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">In dees pijn <rhyme label="c" type="f" corresp="#s1:l5">beminde</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Hooren mijne <rhyme label="d" type="m" corresp="#s1:l6">tael</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Maer! wat droeven <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Tyter die voor <rhyme label="b" type="f">desen</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Placht bemindt te <rhyme label="b" type="f" corresp="#s2:l2">wesen</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Is Silvia <rhyme label="a" type="m" corresp="#s2:l1">quijt</rhyme>:</l>
        <l id="s2:l5" met="3" type="+-">Ach! ach! met <rhyme label="c" type="f">beclaghen</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Roept hy, <rhyme label="d" type="m">Veldt-Goddin</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Kondy niet <rhyme label="c" type="f" corresp="#s2:l5">verdraghen</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Dat ick u <rhyme label="d" type="m" corresp="#s2:l6">bemin</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Maer Philander <rhyme label="a" type="m">schijnt</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Vanden rouw te <rhyme label="b" type="f">sterven</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Die gheen troost kan <rhyme label="b" type="f" corresp="#s3:l2">werven</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Nu sijn Son <rhyme label="a" type="m" corresp="#s3:l1">verdwijnt</rhyme>:</l>
        <l id="s3:l5" met="3" type="+-">Ach! ach! straffe <rhyme label="c" type="f">maeghden</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Maeghden (Eccho) <rhyme label="d" type="m">ach</rhyme>!</l>
        <l id="s3:l7" met="3" type="+-">Die u eerst <rhyme label="c" type="f" corresp="#s3:l5">behaeghden</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Eerst ghepijnicht <rhyme label="d" type="m" corresp="#s3:l6">lach</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Coridon <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Loofden <rhyme label="b" type="f">Amarillis</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">(Die van sijnen wil <rhyme label="b" type="f" corresp="#s4:l2">is</rhyme>)</l>
        <l id="s4:l4" met="3" type="+-">En spot met <rhyme label="a" type="m" corresp="#s4:l1">gheween</rhyme>:</l>
        <l id="s4:l5" met="3" type="+-">Ay, ay, <rhyme label="c" type="f">Philander</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Seght hy wat een <rhyme label="d" type="m">heldt</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Gaet siet naer een <rhyme label="c" type="f" corresp="#s4:l5">ander</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Schoon besneden <rhyme label="d" type="m" corresp="#s4:l6">beldt</rhyme>.</l>
      </lg>
    </lg>
