    <melody>Il est vrai je le confesse</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Wat beduyden all’ <rhyme label="a" type="f">de</rhyme></l>
        <l id="s1:l2" met="3" type="+-">dingen// Die ‘k de <rhyme label="b" type="m">Roomsche</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Kerk// Aen de nieuwe <rhyme label="a" type="f" corresp="#s1:l1">Dopelingen</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Stellen zie te werk? VVaer  <rhyme label="b" type="m" corresp="#s1:l2">toe</rhyme></l>
        <l id="s1:l5" met="4" type="+-">blaestze, quyltze, <rhyme label="c" type="f">zweertze</rhyme></l>
        <l id="s1:l6" met="3" type="+-">VVaertoe wijdze zout? <rhyme label="d" type="m">VVaertoe</rhyme></l>
        <l id="s1:l7" met="4" type="+-">kruystze, zalftze, <rhyme label="c" type="f" corresp="#s1:l5">smeertze</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Hen met <rhyme label="d" type="m" corresp="#s1:l6">Oly-smout</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Om dat zy van over <rhyme label="a" type="f">lange</rhyme></l>
        <l id="s2:l2" met="3" type="+-">In haer eerste <rhyme label="b" type="m">struik</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Van d’Apost’len heeft <rhyme label="a" type="f" corresp="#s2:l1">ontfangen</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Al dit oud <rhyme label="b" type="m" corresp="#s2:l2">gebruik</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Daer van op den dag van <rhyme label="c" type="f">huiden</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Noch getuigen <rhyme label="d" type="m">sijn</rhyme></l>
        <l id="s2:l7" met="4" type="+-">All’ d’oud-vaders die z’ons <rhyme label="c" type="f" corresp="#s2:l5">duiden</rhyme></l>
        <l id="s2:l8" met="3" type="+-">In ’t Grieks en <rhyme label="d" type="m" corresp="#s2:l6">Latijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gaet haer bouken maer <rhyme label="a" type="f">verbladen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">En zult vinden <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Dat voor d’eerste Kerken <rhyme label="a" type="f" corresp="#s3:l1">raden</rhyme></l>
        <l id="s3:l4" met="3" type="+-">All’ deez’ oorde <rhyme label="b" type="m" corresp="#s3:l2">waer</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Zulks dat zy nae d’ouden <rhyme label="c" type="f">regel</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Van Sint <rhyme label="d" type="m">Augustijn</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Niet dan deur ’t Apost’len <rhyme label="c" type="f" corresp="#s3:l5">zegel</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Kan bevestigt <rhyme label="d" type="m" corresp="#s3:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vraegdy doch nae wiens <rhyme label="a" type="f">exempel</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Deze <rhyme label="b" type="m">ceermony</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Is gereikt aen d’eersten <rhyme label="a" type="f" corresp="#s4:l1">Tempel</rhyme>?</l>
        <l id="s4:l4" met="3" type="+-">k’Zeg, en blijffer <rhyme label="b" type="m" corresp="#s4:l2">by</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">(Hoe zeer ook de Ketters <rhyme label="c" type="f">razen</rhyme>)</l>
        <l id="s4:l6" met="3" type="+-">Dat zy deze <rhyme label="d" type="m">stijl</rhyme></l>
        <l id="s4:l7" met="4" type="+-">*Kreeg van Christus eigen <rhyme label="c" type="f" corresp="#s4:l5">blazen</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">En zijn heilig <rhyme label="d" type="m" corresp="#s4:l6">quijl</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als dan Zwingel zijn <rhyme label="a" type="f">verrotten</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Vuilen bek <rhyme label="b" type="m">ontsluit</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Om met dit gebruik te <rhyme label="a" type="f" corresp="#s5:l1">spotten</rhyme>;</l>
        <l id="s5:l4" met="3" type="+-">Zoo en weet de <rhyme label="b" type="m" corresp="#s5:l2">guit</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Niet dat hy met d’eige <rhyme label="c" type="f">zeden</rhyme></l>
        <l id="s5:l6" met="3" type="+-">Ons liefs Heren <rhyme label="d" type="m">lacht</rhyme>:</l>
        <l id="s5:l7" met="4" type="+-">Die dus inde kranke <rhyme label="c" type="f" corresp="#s5:l5">leden</rhyme></l>
        <l id="s5:l8" met="3" type="+-">Wel genade <rhyme label="d" type="m" corresp="#s5:l6">wracht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Om dat d’arme mensch <rhyme label="a" type="f">vermallen</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Dorst zijn <rhyme label="b" type="m">Heerschappij</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Was hy wel met re’en <rhyme label="a" type="f" corresp="#s6:l1">vervallen</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Inde <rhyme label="b" type="m" corresp="#s6:l2">slaverny</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Van de geen die hy <rhyme label="c" type="f">verkoren</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Had tot zijn <rhyme label="d" type="m">Patroon</rhyme>;</l>
        <l id="s6:l7" met="4" type="+-">Die daerom te recht <rhyme label="c" type="f" corresp="#s6:l5">bezworen</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Werd, deur Godes <rhyme label="d" type="m" corresp="#s6:l6">zoon</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">’t Zout beduid de Christen <rhyme label="a" type="f">kennis</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Die de ziel <rhyme label="b" type="m">bewaerdt</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Vry van alle rotte <rhyme label="a" type="f" corresp="#s7:l1">schennis</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Tot dat zy <rhyme label="b" type="m" corresp="#s7:l2">vervaert</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Nae de alder rijkste <rhyme label="c" type="f">Kroning</rhyme>.</l>
        <l id="s7:l6" met="3" type="+-">Daer toe metter <rhyme label="d" type="m">daed</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Christus den gezalfden <rhyme label="c" type="f" corresp="#s7:l5">Koning</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Haer ook zalven <rhyme label="d" type="m" corresp="#s7:l6">laet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Des zoo moetze naerstig <rhyme label="a" type="f">letten</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Dat zet witte <rhyme label="b" type="m">kleed</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Met geen vlakken en <rhyme label="a" type="f" corresp="#s8:l1">besmette</rhyme>:</l>
        <l id="s8:l4" met="3" type="+-">Maer een Lamp <rhyme label="b" type="m" corresp="#s8:l2">gereed</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Inden hand’ en voor de <rhyme label="c" type="f">voeten</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Altijd hebben <rhyme label="d" type="m">mag</rhyme>.</l>
        <l id="s8:l7" met="4" type="+-">Om den Bruigom mee <rhyme label="c" type="f" corresp="#s8:l5">t’ontmoeten</rhyme></l>
        <l id="s8:l8" met="3" type="+-">Opden laetsten <rhyme label="d" type="m" corresp="#s8:l6">dag</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
