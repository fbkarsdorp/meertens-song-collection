  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Jhesu schoon, Godt van <rhyme label="a" type="m">Persoon</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Een Roose sonder <rhyme label="b" type="f">doren</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Ghy hebt met macht, ons <rhyme label="c" type="m">wederbracht</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat langhe was <rhyme label="b" type="f" corresp="#s1:l2">verloren</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Doer dijnen raet, Godt Vader <rhyme label="d" type="m">laet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dijn toecompste <rhyme label="e" type="f">voorspreken</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Op dat niet sy te <rhyme label="e" type="f" corresp="#s1:l6">wreken</rhyme>:</l>
        <l id="s1:l8" met="4" type="-+">Mijn sondich quaet, ghy geeft ons <rhyme label="f" type="m">baet</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Gheen troost en steect, daer ghy <rhyme label="g" type="m">gebreect</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Om ghenaede te <rhyme label="h" type="f">weruen</rhyme>:</l>
        <l id="s1:l11" met="4" type="-+">Die u niet heeft, die hulpe <rhyme label="i" type="m">gheeft</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Die moet eewichlijck <rhyme label="h" type="f" corresp="#s1:l10">steruen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Christe milt, ghy hebt <rhyme label="a" type="m">ghestilt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Der Vaderen <rhyme label="b" type="f">verlanghen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Die Jaer en dach, deden <rhyme label="c" type="m">gheclach</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In duysterheyt <rhyme label="b" type="f" corresp="#s2:l2">gheuanghen</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">En riepen o Godt, opent dit <rhyme label="d" type="m">slot</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En schuert des Hemels <rhyme label="e" type="f">poorten</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En seynt Christum vol <rhyme label="e" type="f" corresp="#s2:l6">confoorten</rhyme>.</l>
        <l id="s2:l8" met="4" type="-+">Den Mesciam, die ons <rhyme label="f" type="m">afnam</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Die smert en pijn, dat ick door <rhyme label="g" type="m">dijn</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Heylich bloet <rhyme label="h" type="f">verstercke</rhyme>.</l>
        <l id="s2:l11" met="4" type="-+">O Godt seer groot, ghy vrijt wt <rhyme label="i" type="m">noot</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Door dijner ghenaeden <rhyme label="h" type="f" corresp="#s2:l10">wercke</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O Jhesu reyn, ghy zijt <rhyme label="a" type="m">alleyn</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Der Sondaren troost op <rhyme label="b" type="f">eerden</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Des heeft u fier, sVaders wil <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghesonden, om mensch te <rhyme label="b" type="f" corresp="#s3:l2">weerden</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Tot salicheyt, sult ghy <rhyme label="d" type="m">bereyt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ten laetsten daghe <rhyme label="e" type="f">gheuen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die gheloouen teewich <rhyme label="e" type="f" corresp="#s3:l6">leuen</rhyme>.</l>
        <l id="s3:l8" met="4" type="-+">O weerde vrucht, al mijn <rhyme label="f" type="m">toeulucht</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Heb ick tot dy, want ghy hebt <rhyme label="g" type="m">my</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Teewich leuen <rhyme label="h" type="f">verworuen</rhyme>.</l>
        <l id="s3:l11" met="4" type="-+">Op u hoep ick, heel <rhyme label="i" type="m">vastelick</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Ghy zijt voor my <rhyme label="h" type="f" corresp="#s3:l10">ghestoruen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Christe groot, een Roose <rhyme label="a" type="m">root</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Schoone aen allen <rhyme label="b" type="f">eynden</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Van herten ghy, wt smerten <rhyme label="c" type="m">vry</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Doet ghy my tot dy <rhyme label="b" type="f" corresp="#s4:l2">weynden</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Sonder u woort, mijn Siel lijt <rhyme label="d" type="m">moort</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Door die valsche <rhyme label="e" type="f">Propheten</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Die my willen <rhyme label="e" type="f" corresp="#s4:l6">opeten</rhyme>:</l>
        <l id="s4:l8" met="4" type="-+">Menigherley, Ketters <rhyme label="f" type="m">gheschrey</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Dichtet mijn werck, hier in dit <rhyme label="g" type="m">perck</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Om u ghenaede <rhyme label="h" type="f">tontuanghen</rhyme>.</l>
        <l id="s4:l11" met="4" type="-+">Laet my niet meer, o lieue <rhyme label="i" type="m">Heer</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Aen valsche Propheten <rhyme label="h" type="f" corresp="#s4:l10">hanghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Jhesu fijn, dijn woort gheeft <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En blinckt als een <rhyme label="b" type="f">Dyamant</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Een licht salt zijn, den armen <rhyme label="c" type="m">dijn</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In duysterheyt hier <rhyme label="b" type="f" corresp="#s5:l2">gheplant</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">O Christe weert, dit licht <rhyme label="d" type="m">begheert</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Mijn herte in allen <rhyme label="e" type="f">val</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dat ick niet dole <rhyme label="e" type="f" corresp="#s5:l6">al</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Dijn troostich woort, is mijn <rhyme label="f" type="m">confoort</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Als nu wort snel, verscheyden <rhyme label="g" type="m">wel</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Siele, ende <rhyme label="h" type="f">Lijf</rhyme>.</l>
        <l id="s5:l11" met="4" type="-+">O Heere ghy, zijt my dan <rhyme label="i" type="m">by</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Helpt my, in dit <rhyme label="h" type="f" corresp="#s5:l10">bedrijf</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
