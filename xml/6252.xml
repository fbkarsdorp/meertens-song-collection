  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">ALs ik laast de koele strandt <rhyme label="a" type="m">betrat</rhyme>,</l>
        <l id="s1:l2" met="7" type="-+">Daer mijn Galathe maar alleen met haar lammertjes <rhyme label="a" type="m" corresp="#s1:l1">zat</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En zong een Herders <rhyme label="b" type="m">lied</rhyme>;</l>
        <l id="s1:l4" met="1" type="-+">Ach! <rhyme label="b" type="m" corresp="#s1:l3">vlied</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Riep zy, Ã´ geyle lust! van <rhyme label="c" type="m">hier</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">Koom golven! doof het <rhyme label="c" type="m" corresp="#s1:l5">vyer</rhyme></l>
        <l id="s1:l7" met="1" type="-+">Van <rhyme label="d" type="m">Min</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En laet my doch die <rhyme label="e" type="f">hette</rhyme></l>
        <l id="s1:l9" met="1" type="-+">Niet <rhyme label="e" type="f" corresp="#s1:l8">smette</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Zy en had zo haast dat woord niet <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s2:l2" met="7" type="-+">Oft mijn Galathe nam de vlucht, en zy riep <rhyme label="a" type="m" corresp="#s2:l1">overluyt</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Daer zie ik Tyter <rhyme label="b" type="m">staan</rhyme>;</l>
        <l id="s2:l4" met="1" type="-+">'k Wil <rhyme label="b" type="m" corresp="#s2:l3">gaan</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Eer hy my onverziens <rhyme label="c" type="m">verrast</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En na mijn boezem <rhyme label="c" type="m" corresp="#s2:l5">tast</rhyme>;</l>
        <l id="s2:l7" met="1" type="-+">Want <rhyme label="d" type="m">hy</rhyme></l>
        <l id="s2:l8" met="3" type="-+">My licht, door minnens <rhyme label="e" type="f">hette</rhyme>,</l>
        <l id="s2:l9" met="1" type="-+">Mogt <rhyme label="e" type="f" corresp="#s2:l8">smette</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Barrevoets trad sy ter zeewaart <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s3:l2" met="7" type="-+">En mijn Galathee riep my toe, ik en pas op geen <rhyme label="a" type="m" corresp="#s3:l1">Min</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maar keer die geyle <rhyme label="b" type="m">brand</rhyme>,</l>
        <l id="s3:l4" met="1" type="-+">Van <rhyme label="b" type="m" corresp="#s3:l3">strand</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Tot spijt van 't minnende <rhyme label="c" type="m">gemoed</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat zich in 't minne <rhyme label="c" type="m" corresp="#s3:l5">voed</rhyme>,</l>
        <l id="s3:l7" met="1" type="-+">Tot <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Op dat my minnens <rhyme label="e" type="f">hette</rhyme></l>
        <l id="s3:l9" met="1" type="-+">Niet <rhyme label="e" type="f" corresp="#s3:l8">smette</rhyme>.</l>
      </lg>
    </lg>
  </text>
