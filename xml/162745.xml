  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Jesu, 's werelts <rhyme label="a" type="m">Licht</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Hoe is u <rhyme label="a" type="m" corresp="#s1:l1">Aengesicht</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Soo deerelick <rhyme label="b" type="f">geslagen</rhyme>?</l>
        <l id="s1:l4" met="3" type="-+">Dat Aensicht vol van <rhyme label="c" type="m">vreught</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">'t Welck d' Engelen <rhyme label="c" type="m" corresp="#s1:l4">verheught</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Daer Godt in heeft <rhyme label="b" type="f" corresp="#s1:l3">behagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Daer is geen wesen <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Noch schoonheyt in u, <rhyme label="a" type="m" corresp="#s2:l1">Heer</rhyme>!</l>
        <l id="s2:l3" met="3" type="-+">Heel bloedigh zijn uw' <rhyme label="b" type="f">wangen</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Geschent van lit tot <rhyme label="c" type="m">lit</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Zijt ghy van verwe <rhyme label="c" type="m" corresp="#s2:l4">wit</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Als met de doodt <rhyme label="b" type="f" corresp="#s2:l3">bevangen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy, Menschen selve ben <rhyme label="a" type="m">'t</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die Jesus Aensicht <rhyme label="a" type="m" corresp="#s3:l1">schendt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Door uwe snoode <rhyme label="b" type="f">sonden</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Uw' ydel vuyle <rhyme label="c" type="m">lach</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Geeft hem dien <rhyme label="c" type="m" corresp="#s3:l4">kinback-slach</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Hem uw' wulpsch' oogen <rhyme label="b" type="f" corresp="#s3:l3">wouden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En sondight toch niet <rhyme label="a" type="m">meer</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">Maer boet u, met <rhyme label="a" type="m" corresp="#s4:l1">hertzeer</rhyme>!</l>
        <l id="s4:l3" met="3" type="-+">Ghy sult hem weer <rhyme label="b" type="f">genesen</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Dit lieffelijck <rhyme label="c" type="m">gelaet</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">'t Welck bloedigh voor u <rhyme label="c" type="m" corresp="#s4:l4">staet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Sal uw' genadigh <rhyme label="b" type="f" corresp="#s4:l3">wesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
