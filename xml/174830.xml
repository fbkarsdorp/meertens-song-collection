<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>174830</id>
    <date>
      <year-start>1861</year-start>
      <year-end>1861</year-end>
    </date>
    <tags>
      <tag>children's song</tag>
    </tags>
    <melody>Vieren vieren achteruit</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Vieren, vieren!.... <rhyme label="a" type="m">achteruit</rhyme>!....</l>
        <l id="s1:l2" met="4" type="+-">Zal uw vlieger stijgen <rhyme label="b" type="f">kunnen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Moet ge hem de strengen <rhyme label="b" type="f" corresp="#s1:l2">gunnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Of de kans die is <rhyme label="a" type="m" corresp="#s1:l1">verbruid</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Geef uw vlieger vrije <rhyme label="c" type="m">lucht</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Geef hem ruimte voor zijn <rhyme label="c" type="m" corresp="#s1:l5">vlugt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Loopen, loopen, wat je <rhyme label="a" type="m">kan</rhyme>!</l>
        <l id="s2:l2" met="4" type="+-">Als uw vlieger neêr wil <rhyme label="b" type="f">dalen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Moet ge hem weêr op gaan <rhyme label="b" type="f" corresp="#s2:l2">halen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Met een strakker, straffer <rhyme label="a" type="m" corresp="#s2:l1">span</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Zonder moeite geen <rhyme label="c" type="m">plêzier</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Met dat vliegende <rhyme label="c" type="m" corresp="#s2:l5">papier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Palmen, palmen, wat je <rhyme label="a" type="m">mag</rhyme>!</l>
        <l id="s3:l2" met="4" type="+-">Kunt ge hem niet boven <rhyme label="b" type="f">houên</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Zorg ten minste voor uw <rhyme label="b" type="f" corresp="#s3:l2">touwen</rhyme>....</l>
        <l id="s3:l4" met="4" type="+-">'t Is een les voor d' ouden <rhyme label="a" type="m" corresp="#s3:l1">dag</rhyme>: -</l>
        <l id="s3:l5" met="4" type="+-">Wie dat alles tijdig <rhyme label="c" type="m">kan</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Die wordt een verstandig <rhyme label="c" type="m" corresp="#s3:l5">man</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
