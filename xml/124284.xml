    <tags/>
    <melody>Ik ben een meisje fris en jong</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ik ben een Meisje naar den <rhyme label="a" type="m">trant</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Goddank ik ben nog <rhyme label="b" type="m">vrij</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Ik had een treurgang in mijn <rhyme label="c" type="m">hoofd</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Door mannen <rhyme label="b" type="m" corresp="#s1:l2">zotternij</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ik ben een meisje jong en <rhyme label="a" type="m">frisch</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ik min ook zang en <rhyme label="b" type="m">dans</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Mijn rijkdom is een vrolijk <rhyme label="c" type="m">hart</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Mijn kroon een <rhyme label="b" type="m" corresp="#s2:l2">bloemenkrans</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ik ben, als moeder Eva <rhyme label="a" type="m">was</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Regt nieuwsgierig van <rhyme label="b" type="m">aard</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Nieuwsgierig, ja <rhyme label="c" type="m">nieuwsgierigheid</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Heeft mij zoo zeer <rhyme label="b" type="m" corresp="#s3:l2">bezwaard</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ik vliet ook voor de mannen <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Mama heeft mij <rhyme label="b" type="m">verklaard</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wij arme meisjes zijn <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Voor hunnen wil op <rhyme label="b" type="m" corresp="#s4:l2">aard</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wat is een man al zonder <rhyme label="a" type="m">vrouw</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Een stukkend <rhyme label="b" type="m">spinnewiel</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Een stilstaand uurwerk ook <rhyme label="c" type="m">daarbij</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Een ligchaam zonder <rhyme label="b" type="m" corresp="#s5:l2">ziel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daarom zit in mijn vrolijk <rhyme label="a" type="m">hart</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Geen zot- of trotschheid <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daarom dat ik een meisje <rhyme label="c" type="m">ben</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Gezond van ziel en <rhyme label="b" type="m" corresp="#s6:l2">zin</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
