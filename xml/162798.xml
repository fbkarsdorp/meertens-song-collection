  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE snoode list der <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die vleyende <rhyme label="b" type="m">bedrieght</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">En vals van <rhyme label="a" type="f" corresp="#s1:l1">gronde</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Nochtans met soeten <rhyme label="a" type="f" corresp="#s1:l1">monde</rhyme></l>
        <l id="s1:l5" met="2" type="-+">In sluymer <rhyme label="b" type="m" corresp="#s1:l2">wieght</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Is even als de <rhyme label="c" type="f">liste</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die Delila <rhyme label="d" type="f">ghebruyckte</rhyme>:</l>
        <l id="s1:l8" met="2" type="-+">Simson die <rhyme label="d" type="f" corresp="#s1:l7">luyckte</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Het ooghe toe, en <rhyme label="c" type="f" corresp="#s1:l6">giste</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Op geen Banden // der <rhyme label="e" type="f">Vyanden</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Tot sijn handen // haer kracht <rhyme label="c" type="f" corresp="#s1:l6">miste</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sijn sterckheydt gingh <rhyme label="a" type="f">verlooren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Doe 't Hayr (terwijl hy <rhyme label="b" type="m">sliep</rhyme>)</l>
        <l id="s2:l3" met="2" type="-+">Wordt <rhyme label="a" type="f" corresp="#s2:l1">afgeschoren</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Den Philisteen quam <rhyme label="a" type="f" corresp="#s2:l1">voren</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Doe zy haer <rhyme label="b" type="m" corresp="#s2:l2">riep</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Die hebben <rhyme label="c" type="f">onbesweecken</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Al met Metalen <rhyme label="d" type="f">banden</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Gheboeyt sijn <rhyme label="d" type="f" corresp="#s2:l7">handen</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En d'oogen <rhyme label="c" type="f" corresp="#s2:l6">uytghesteecken</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Dus ghevangen // most hy <rhyme label="e" type="f">stranghe</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">'t Leven langhe // Koorn gaen <rhyme label="c" type="f" corresp="#s2:l6">breecken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De sonde, die in 't <rhyme label="a" type="f">vleyen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Tot ghenen tijden <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Soeckt te <rhyme label="a" type="f" corresp="#s3:l1">verleyen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En ons van Godt te <rhyme label="a" type="f" corresp="#s3:l1">scheyen</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Door schijn van <rhyme label="b" type="m" corresp="#s3:l2">lust</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">De mensch door 't dwaeslijck <rhyme label="c" type="f">mallen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Valt in de lust te <rhyme label="d" type="f">slapen</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Verliest sijn <rhyme label="d" type="f" corresp="#s3:l7">Wapen</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Dan wordt hy <rhyme label="c" type="f" corresp="#s3:l6">overvallen</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Op die stonde // van de <rhyme label="e" type="f">sonden</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Ja ghebonden // van hun <rhyme label="c" type="f" corresp="#s3:l6">allen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De Ziel-verleydb're <rhyme label="a" type="f">lusten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Doen voort op 't <rhyme label="b" type="m">onversienst</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Die zy eerst <rhyme label="a" type="f" corresp="#s4:l1">kuste</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gaen spoedigh sonder <rhyme label="a" type="f" corresp="#s4:l1">rusten</rhyme></l>
        <l id="s4:l5" met="2" type="-+">In Sathans <rhyme label="b" type="m" corresp="#s4:l2">dienst</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Daer worden dan sijn <rhyme label="c" type="f">Slaven</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Der deughden-kracht <rhyme label="d" type="f">onttoghen</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Der <rhyme label="d" type="f" corresp="#s4:l7">Zielen-oogen</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Oock wreed'lijck <rhyme label="c" type="f" corresp="#s4:l6">uytgegraven</rhyme>:</l>
        <l id="s4:l10" met="4" type="+-">Voort haer leven // is vol <rhyme label="e" type="f">beven</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Tot sy sneven // in den <rhyme label="c" type="f" corresp="#s4:l6">Grave</rhyme>.</l>
      </lg>
    </lg>
  </text>
