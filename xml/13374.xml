      <category translation="work">werk</category>
      <category translation="narratives">verhalen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">LIefhebbers blijft een wynigh <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En luystert met <rhyme label="b" type="m">vermaeck</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ons Schip leyt klaer, om t'Zeyl te <rhyme label="a" type="m" corresp="#s1:l1">gaen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Aenhoort doch na de <rhyme label="b" type="m" corresp="#s1:l2">saeck</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Al na de Goutkust leyt de <rhyme label="c" type="m">Vaert</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Tot aen de Mijne hoogh <rhyme label="c" type="m" corresp="#s1:l5">vermaert</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">En dan om Neegers langhs de <rhyme label="d" type="m">Kust</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Zijn wy op <rhyme label="d" type="m" corresp="#s1:l7">uytgerust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Amsterdam! gy schoone <rhyme label="a" type="m">Stadt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hadieu, het gaet jou <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Zier hiet ons Scheepjen Zeylen <rhyme label="a" type="m" corresp="#s2:l1">radt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met meenigh fraeij <rhyme label="b" type="m" corresp="#s2:l2">gesel</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Al om het schoon Guineese <rhyme label="c" type="m">Gout</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dat yder hoogh van waerde <rhyme label="c" type="m" corresp="#s2:l5">hout</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Godt geeft ons nu al na den <rhyme label="d" type="m">eys</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Maer een behouden <rhyme label="d" type="m" corresp="#s2:l7">reys</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het eerste Lant dat wy aen <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Is Cabo Verde <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Van daer wy onse cours weer <rhyme label="a" type="m" corresp="#s3:l1">spoen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Naer Ryo Gamby <rhyme label="b" type="m" corresp="#s3:l2">zoet</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En dan tot in de <rhyme label="c" type="m">Sarraljoen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Wy ons al om vers Water <rhyme label="c" type="m" corresp="#s3:l5">spoen</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">En soo dan langhs de Greynkust <rhyme label="d" type="m">heen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Verstaet wel na mijn <rhyme label="d" type="m" corresp="#s3:l7">reen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daer na komt de qua kust, <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hier zeylen wy in <rhyme label="b" type="m">vree</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Tot aen 't Casteel de Mijne <rhyme label="a" type="m" corresp="#s4:l1">voort</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En settent op de <rhyme label="b" type="m" corresp="#s4:l2">Ree</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Daer gaet het handelen lustigh <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">De Neegers met haer gout <rhyme label="c" type="m" corresp="#s4:l5">belaen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Komen aen Boort, op staende <rhyme label="d" type="m">voet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dat geeft ons goede <rhyme label="d" type="m" corresp="#s4:l7">moet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als hier ons werck is <rhyme label="a" type="m">gedaen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Zeylen wy weer op <rhyme label="b" type="m">hoop</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Al van de Mijne wilt <rhyme label="a" type="m" corresp="#s5:l1">verstaen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Voor eerst na Caep de <rhyme label="b" type="m" corresp="#s5:l2">Loop</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dan na Angole, hoort wel <rhyme label="c" type="m">mijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Om kleetjes en om Neegers <rhyme label="c" type="m" corresp="#s5:l5">fijn</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">En daer mee na West-Indien <rhyme label="d" type="m">heen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Lystert wel na mijn <rhyme label="d" type="m" corresp="#s5:l7">reen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wanneer ons Schip nu is <rhyme label="a" type="m">gelaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met Neegers nae den <rhyme label="b" type="m">eys</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Soo is 't dat wy strackx t'zeyl weer <rhyme label="a" type="m" corresp="#s6:l1">gaen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En spoeden onse <rhyme label="b" type="m" corresp="#s6:l2">Reys</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Van alles wel versien <rhyme label="c" type="m">valjant</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Nae 't Eylant Carrasou <rhyme label="c" type="m" corresp="#s6:l5">bekant</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Om t'handelen van daer met <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Al aen de vaste <rhyme label="d" type="m" corresp="#s6:l7">Kust</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Speck Jan die komt met vaertuyg, <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En handelt met der <rhyme label="b" type="m">spoet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Schiet uyt sijn stucks van achten <rhyme label="a" type="m" corresp="#s7:l1">voort</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Voor onse Neegers <rhyme label="b" type="m" corresp="#s7:l2">goet</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Die sy voor Slaven bruycken <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Al leven sy oock hondert <rhyme label="c" type="m" corresp="#s7:l5">jaer</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">En al haer Kinders en <rhyme label="d" type="m">Geslacht</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Voor Slaven zijn <rhyme label="d" type="m" corresp="#s7:l7">geacht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als nu dit Werck is <rhyme label="a" type="m">bestelt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dan voort na Hollandt <rhyme label="b" type="m">dra</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Lustigh versien van Gout en <rhyme label="a" type="m" corresp="#s8:l1">Gelt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">De Koopman wachter <rhyme label="b" type="m" corresp="#s8:l2">na</rhyme>;</l>
        <l id="s8:l5" met="4" type="-+">Welkom dan Schipper en <rhyme label="c" type="m">Commies</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Die Reys die biet ons geen <rhyme label="c" type="m" corresp="#s8:l5">verlies</rhyme>.</l>
        <l id="s8:l7" met="4" type="-+">Gy moet ons noch een Toghjen <rhyme label="d" type="m">doen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Wilt u wat haestigh <rhyme label="d" type="m" corresp="#s8:l7">spoen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ziet ons Genees-vaerder nu <rhyme label="a" type="m">kant</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Hoe kostelijck munt hy <rhyme label="b" type="m">uyt</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Een Gouwe Ringh al aen sijn <rhyme label="a" type="m" corresp="#s9:l1">hant</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Een Hoet-bant (tot <rhyme label="b" type="m" corresp="#s9:l2">besluyt</rhyme>/)</l>
        <l id="s9:l5" met="4" type="-+">Van Gout of Zilver aen sijn <rhyme label="c" type="m">Hoedt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Daer op so draeght hy hooge <rhyme label="c" type="m" corresp="#s9:l5">moet</rhyme>:</l>
        <l id="s9:l7" met="4" type="-+">Maer ach! sijn facy schijnt so <rhyme label="d" type="m">naer</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Als of 't de Doodt selfs <rhyme label="d" type="m" corresp="#s9:l7">waer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Luystert voor 't laest al eer gy <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Kan dit also <rhyme label="b" type="m">bestaen</rhyme>?</l>
        <l id="s10:l3" met="4" type="-+">Dat d'een den aer verkoopen <rhyme label="a" type="m" corresp="#s10:l1">laet</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Zeght is dat wel <rhyme label="b" type="m" corresp="#s10:l2">gedaen</rhyme>?</l>
        <l id="s10:l5" met="4" type="-+">Ick vraegh u oordeel tot <rhyme label="c" type="m">besluyt</rhyme>?</l>
        <l id="s10:l6" met="4" type="-+">En daer mee siet so schey ick <rhyme label="c" type="m" corresp="#s10:l5">uyt</rhyme>;</l>
        <l id="s10:l7" met="4" type="-+">En laet Genee en oock de <rhyme label="d" type="m">Vaert</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Aen die het meest schat <rhyme label="d" type="m" corresp="#s10:l7">waert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
