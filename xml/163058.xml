  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Vereenigde <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wiens <rhyme label="b" type="m">stantvastigheid</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Verwind alle <rhyme label="a" type="f" corresp="#s1:l1">smerten</rhyme></l>
        <l id="s1:l4" met="3" type="+-">En 't woeden der <rhyme label="b" type="m" corresp="#s1:l2">Nijd</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Gy slijt uwe <rhyme label="c" type="f">dagen</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Vernoegd en vol <rhyme label="d" type="m">lust</rhyme></l>
        <l id="s1:l7" met="3" type="+-">En werd nooyt door <rhyme label="c" type="f" corresp="#s1:l5">plagen</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Nog droefheid <rhyme label="d" type="m" corresp="#s1:l6">ontrust</rhyme>;</l>
        <l id="s1:l9" met="3" type="+-">De rust streeld uw <rhyme label="e" type="f">sinnen</rhyme></l>
        <l id="s1:l10" met="3" type="+-">En verheugd u <rhyme label="f" type="m">jeugd</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">In 't suyver <rhyme label="e" type="f" corresp="#s1:l9">beminnen</rhyme></l>
        <l id="s1:l12" met="3" type="+-">Van elkanders <rhyme label="f" type="m" corresp="#s1:l10">deugd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">De trouw bind uw <rhyme label="a" type="f">zielen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat nimmer de <rhyme label="b" type="m">nijd</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Die band kan <rhyme label="a" type="f" corresp="#s2:l1">vernielen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Hoe sy u <rhyme label="b" type="m" corresp="#s2:l2">bestryd</rhyme>;</l>
        <l id="s2:l5" met="3" type="+-">Gy vreesd geen <rhyme label="c" type="f">verkeeren</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Van het los <rhyme label="d" type="m">geluk</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Dat u niet kan <rhyme label="c" type="f" corresp="#s2:l5">deeren</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Gy groeyd self in <rhyme label="d" type="m" corresp="#s2:l6">druk</rhyme>;</l>
        <l id="s2:l9" met="3" type="+-">Gy kund al <rhyme label="e" type="f">verwinnen</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Wat smert heet op <rhyme label="f" type="m">aard</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Wijl 't ware <rhyme label="e" type="f" corresp="#s2:l9">beminnen</rhyme></l>
        <l id="s2:l12" met="3" type="+-">Vernoeginge <rhyme label="f" type="m" corresp="#s2:l10">baard</rhyme>.</l>
      </lg>
    </lg>
  </text>
