  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Marregrietje, mijn <rhyme label="a" type="f">Voogdesje</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hoe verslijt gy dus uw <rhyme label="b" type="m">jeugt</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Dat gy altyt by u <rhyme label="a" type="f" corresp="#s1:l1">Besje</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Soo blyft woonen sonder <rhyme label="b" type="m" corresp="#s1:l2">vreugt</rhyme>?</l>
        <l id="s1:l5" met="2" type="+-"><rhyme label="c" type="m">Marregriet</rhyme>,</l>
        <l id="s1:l6" met="1" type="-+">Ey, <rhyme label="c" type="m" corresp="#s1:l5">niet</rhyme>!</l>
        <l id="s1:l7" met="3" type="+-">Laat dit Oude <rhyme label="d" type="m">wijf</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Dus niet zijn uw tyt <rhyme label="d" type="m" corresp="#s1:l7">verdryf</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ik sou soo garen om een <rhyme label="a" type="f">roompje</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Met jou eens na buyten <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Rusten onder het Linde <rhyme label="a" type="f" corresp="#s2:l1">Boompje</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Datje maar eens dorst <rhyme label="b" type="m" corresp="#s2:l2">bestaan</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-"><rhyme label="c" type="m">Marregriet</rhyme>.</l>
        <l id="s2:l6" met="1" type="-+">Maar <rhyme label="c" type="m" corresp="#s2:l5">ziet</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Besje is te <rhyme label="d" type="m">quaat</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Als men eensjes met u <rhyme label="d" type="m" corresp="#s2:l7">praat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Het is nou Besje al <rhyme label="a" type="f">vergeten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Hoe zy in haar jonge <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Heele nagjes heeft <rhyme label="a" type="f" corresp="#s3:l1">versleten</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Want sy wiert zo sterk <rhyme label="b" type="m" corresp="#s3:l2">gevrijdt</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-"><rhyme label="c" type="m">Marregriet</rhyme>:</l>
        <l id="s3:l6" met="1" type="-+">Jan, <rhyme label="c" type="m" corresp="#s3:l5">Piet</rhyme></l>
        <l id="s3:l7" met="3" type="+-">En Kees <rhyme label="d" type="m">Louweszeun</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Hadde met haar zulke <rhyme label="d" type="m" corresp="#s3:l7">deun</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ik weet, gy waart ook gare <rhyme label="a" type="f">vroutje</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Maar wie durft ‘er doen <rhyme label="b" type="m">versoek</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ik sie wel dat gy draagt een <rhyme label="a" type="f" corresp="#s4:l1">trouwtje</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Onder u Satyne <rhyme label="b" type="m" corresp="#s4:l2">doeck</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-"><rhyme label="c" type="m">Marregriet</rhyme>,</l>
        <l id="s4:l6" met="1" type="-+">Is het <rhyme label="c" type="m" corresp="#s4:l5">niet</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Of gy sijde: <rhyme label="d" type="m">loop</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Ey, komt, bindme dese <rhyme label="d" type="m" corresp="#s4:l7">knoop</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Is ‘t niet jammer, soete <rhyme label="a" type="f">meysje</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dat jou groente so <rhyme label="b" type="m">verdort</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Geeft my ‘t ja woort dog een <rhyme label="a" type="f" corresp="#s5:l1">reysje</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Agt het niet of Besje <rhyme label="b" type="m" corresp="#s5:l2">knort</rhyme>.</l>
        <l id="s5:l5" met="2" type="+-"><rhyme label="c" type="m">Marregriet</rhyme>,</l>
        <l id="s5:l6" met="1" type="-+">‘t <rhyme label="c" type="m" corresp="#s5:l5">Verdriet</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Dat ik om u <rhyme label="d" type="m">ley</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Is de meeste <rhyme label="d" type="m" corresp="#s5:l7">slaverny</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Na ik denck, wy sulle <rhyme label="a" type="f">wagte</rhyme>:</l>
        <l id="s6:l2" met="4" type="+-">Besje word dog over <rhyme label="b" type="m">oud</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En misschien eer weynig <rhyme label="a" type="f" corresp="#s6:l1">nagte</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Is sy dood, ja styf en <rhyme label="b" type="m" corresp="#s6:l2">kout</rhyme>:</l>
        <l id="s6:l5" met="2" type="+-"><rhyme label="c" type="m">Marregriet</rhyme>,</l>
        <l id="s6:l6" met="1" type="-+">‘t <rhyme label="c" type="m" corresp="#s6:l5">Gebied</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Van haar huys en <rhyme label="d" type="m">Hof</rhyme>:</l>
        <l id="s6:l8" met="4" type="+-">Dan bent gy daar Vrouwtje <rhyme label="d" type="m" corresp="#s6:l7">of</rhyme>.</l>
      </lg>
    </lg>
  </text>
