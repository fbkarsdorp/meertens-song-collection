      <year-start>1639</year-start>
      <year-end>1639</year-end>
    </date>
    <location>
      <orginal-name>de rijp</orginal-name>
      <standard-name>De Rijp, The Netherlands</standard-name>
      <coordinates>
        <lon>52.5548999</lon>
        <lat>4.8440884</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Est-ce Mars</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'K Heb u Liedeken <rhyme label="a" type="f">ontfanghen</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Met <rhyme label="b" type="m">gheneught</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En ick voel in 't hert <rhyme label="a" type="f" corresp="#s1:l1">verlanghen</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Om die <rhyme label="b" type="m" corresp="#s1:l2">deught</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Met een Liedt // soo ghy <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">V te verghelden <rhyme label="d" type="m">weer</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">In <rhyme label="d" type="m" corresp="#s1:l6">wederkeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'K vind' een zwaer inwendigh <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Wt <rhyme label="b" type="m">ghebeelt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Waer uyt dat een soet <rhyme label="a" type="f" corresp="#s2:l1">verblijden</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Wordt <rhyme label="b" type="m" corresp="#s2:l2">gheteelt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Als gedult // en <rhyme label="c" type="m">onschult</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Te samen zijn <rhyme label="d" type="m">ghepaert</rhyme></l>
        <l id="s2:l7" met="2" type="-+">En wel <rhyme label="d" type="m" corresp="#s2:l6">bewaert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Al die hier in tranen <rhyme label="a" type="f">saeyen</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Met <rhyme label="b" type="m">ghesucht</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sullen nae met blyschap <rhyme label="a" type="f" corresp="#s3:l1">maeyen</rhyme></l>
        <l id="s3:l4" met="2" type="+-">Haere <rhyme label="b" type="m" corresp="#s3:l2">vrucht</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">'t Edel zaet // komt te <rhyme label="c" type="m">baet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Een wel gheladen <rhyme label="d" type="m">schoof</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Door het <rhyme label="d" type="m" corresp="#s3:l6">gheloof</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Saligh zijnse die hier <rhyme label="a" type="f">weenen</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">(Seydt den <rhyme label="b" type="m">Heer</rhyme>,)</l>
        <l id="s4:l3" met="4" type="+-">Want men salse vreucht <rhyme label="a" type="f" corresp="#s4:l1">verleenen</rhyme>,</l>
        <l id="s4:l4" met="2" type="+-">Dies te <rhyme label="b" type="m" corresp="#s4:l2">meer</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Maer die lacht // hy <rhyme label="c" type="m">verwacht</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Al met den Rijcken <rhyme label="d" type="m">vraet</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Nae 't goed' het <rhyme label="d" type="m" corresp="#s4:l6">quaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Tusschen lacchen en <rhyme label="a" type="f">verblijden</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Is <rhyme label="b" type="m">verscheel</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Want 't verblijden, is by <rhyme label="a" type="f" corresp="#s5:l1">tijden</rhyme></l>
        <l id="s5:l4" met="2" type="+-">Soet en <rhyme label="b" type="m" corresp="#s5:l2">eel</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Maer den spot // buyten <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Of dwase ydel <rhyme label="d" type="m">vreught</rhyme></l>
        <l id="s5:l7" met="2" type="-+">En is gheen <rhyme label="d" type="m" corresp="#s5:l6">deught</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'s Werelts druck en vreughde <rhyme label="a" type="f">pleghen</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Alle <rhyme label="b" type="m">beyd'</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Komen uyt verkeerde <rhyme label="a" type="f" corresp="#s6:l1">weghen</rhyme>:</l>
        <l id="s6:l4" met="2" type="+-">Maer die <rhyme label="b" type="m" corresp="#s6:l2">schreydt</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Om de sond' // en de <rhyme label="c" type="m">wond'</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die uyt Gods minne <rhyme label="d" type="m">spruyt</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Brenght blyschap <rhyme label="d" type="m" corresp="#s6:l6">uyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Want den Goddelijcken <rhyme label="a" type="f">rouwe</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Wel <rhyme label="b" type="m">ghelijckt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Een bedroefde Swanger <rhyme label="a" type="f" corresp="#s7:l1">Vrouwe</rhyme>,</l>
        <l id="s7:l4" met="2" type="+-">Die om <rhyme label="b" type="m" corresp="#s7:l2">kijckt</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Met een langh // suchten <rhyme label="c" type="m">bangh</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Tot dats' haer lieve <rhyme label="d" type="m">Kindt</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">In d'armen <rhyme label="d" type="m" corresp="#s7:l6">vindt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Maer wanneer het is <rhyme label="a" type="f">gheboren</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Is haer <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Soo verheught, (het welck <rhyme label="a" type="f" corresp="#s8:l1">te</rhyme></l>
        <l id="s8:l4" met="2" type="+-">Vooren was vol <rhyme label="b" type="m" corresp="#s8:l2">smert</rhyme>,)</l>
        <l id="s8:l5" met="4" type="+-">Datse gheen // van de <rhyme label="c" type="m">ween</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Tot schaed' en <rhyme label="d" type="m">overdenckt</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Die 't herte <rhyme label="d" type="m" corresp="#s8:l6">krenckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Als het herte wordt <rhyme label="a" type="f">ghenesen</rhyme></l>
        <l id="s9:l2" met="2" type="+-">Deur Gods <rhyme label="b" type="m">Gheest</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Mach den Mensch wel vrolijck <rhyme label="a" type="f" corresp="#s9:l1">wesen</rhyme>:</l>
        <l id="s9:l4" met="2" type="+-">Want zijn <rhyme label="b" type="m" corresp="#s9:l2">Feest</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Iesus gheeft // dien <rhyme label="c" type="m">beleeft</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">In 't hert hem komen <rhyme label="d" type="m">laet</rhyme>,</l>
        <l id="s9:l7" met="2" type="-+">Daer hy voor <rhyme label="d" type="m" corresp="#s9:l6">staet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">'t Kan oock somtijdts wel <rhyme label="a" type="f">ghebeuren</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Dat door 't <rhyme label="b" type="m">Cruys</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">'t Hert is in ghestadigh <rhyme label="a" type="f" corresp="#s10:l1">treuren</rhyme>,</l>
        <l id="s10:l4" met="2" type="+-">Om 't <rhyme label="b" type="m" corresp="#s10:l2">confuys</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Dat hy siet // met <rhyme label="c" type="m">verdriet</rhyme></l>
        <l id="s10:l6" met="3" type="-+">In 's Weerelts woeste <rhyme label="d" type="m">Zee</rhyme>,</l>
        <l id="s10:l7" met="2" type="-+">Dit doet hem <rhyme label="d" type="m" corresp="#s10:l6">wee</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Sulcken wee heeft Christus <rhyme label="a" type="f">vonden</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">Doen hy <rhyme label="b" type="m">sach</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Veelderley verblinde <rhyme label="a" type="f" corresp="#s11:l1">sonden</rhyme></l>
        <l id="s11:l4" met="2" type="+-">Die hy <rhyme label="b" type="m" corresp="#s11:l2">plach</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Deur veel traen // af te <rhyme label="c" type="m">dwaen</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Wt medelijden <rhyme label="d" type="m">groot</rhyme></l>
        <l id="s11:l7" met="2" type="-+">Tot in den <rhyme label="d" type="m" corresp="#s11:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">'k Wensch u staegh met hem te <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">Om dies <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Dat ghy met hem meught <rhyme label="a" type="f" corresp="#s12:l1">verblijden</rhyme></l>
        <l id="s12:l4" met="2" type="+-">Sonder <rhyme label="b" type="m" corresp="#s12:l2">schil</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Want de Croon // brenght te <rhyme label="c" type="m">loon</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Eeuwigh' <rhyme label="d" type="m">onsterff'lickheydt</rhyme>,</l>
        <l id="s12:l7" met="2" type="-+">Voor een kleyn <rhyme label="d" type="m" corresp="#s12:l6">leydt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Treuren is niet te <rhyme label="a" type="f">ghelijcken</rhyme></l>
        <l id="s13:l2" met="2" type="+-">In dees <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">By 't gheen dat namaels sal <rhyme label="a" type="f" corresp="#s13:l1">blijcken</rhyme></l>
        <l id="s13:l4" met="2" type="+-">Hem die <rhyme label="b" type="m" corresp="#s13:l2">lijdt</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">En die naer // 't <rhyme label="c" type="m">onsichtbaer</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Staegh sijn ghesichte <rhyme label="d" type="m">wendt</rhyme>,</l>
        <l id="s13:l7" met="2" type="-+">'t En heeft geen <rhyme label="d" type="m" corresp="#s13:l6">endt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
