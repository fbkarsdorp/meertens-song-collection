  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Zebedeusche <rhyme label="a" type="f">Moeder</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met een beleefde <rhyme label="b" type="m">groet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Viel Jesum den <rhyme label="a" type="f" corresp="#s1:l1">Behoeder</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Eerbiedentlijck te <rhyme label="b" type="m" corresp="#s1:l2">voet</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">En hy, wat's u <rhyme label="c" type="f">begeeren</rhyme>?</l>
        <l id="s1:l6" met="3" type="-+">Heer, seyd' sy, anders <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Dan dat ghy wilt <rhyme label="c" type="f" corresp="#s1:l5">vereeren</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Mijn Soonen, die gh'hier <rhyme label="d" type="m" corresp="#s1:l6">siet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Laet Iacob zijn <rhyme label="a" type="f">gheseten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">By u ter-rechter <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En Ian op eene <rhyme label="a" type="f" corresp="#s2:l1">breette</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ter slincker in het <rhyme label="b" type="m" corresp="#s2:l2">landt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Daer ghy eens sult <rhyme label="c" type="f">regneeren</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Ach! sprack hy, ghy en <rhyme label="d" type="m">weet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Niet wat ghy kont <rhyme label="c" type="f" corresp="#s2:l5">begeeren</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Van 'tGoddelijck <rhyme label="d" type="m" corresp="#s2:l6">secreet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sijt ghy luy dan te <rhyme label="a" type="f">drincken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Mijn Beecker wel te <rhyme label="b" type="m">vreen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die ick sal laeten <rhyme label="a" type="f" corresp="#s3:l1">sincken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In 'tdiepste van mijn <rhyme label="b" type="m" corresp="#s3:l2">le'en</rhyme>?</l>
        <l id="s3:l5" met="3" type="-+">Waer op sy beyde <rhyme label="c" type="f">diende</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Volmondich: jae wy <rhyme label="d" type="m">Heer</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">En hy weerom: o <rhyme label="c" type="f" corresp="#s3:l5">vriende</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Ghy sult oock min, of <rhyme label="d" type="m" corresp="#s3:l6">meer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy sult mijn Kroes <rhyme label="a" type="f">verswelgen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Maer recht, oft' slincker <rhyme label="b" type="m">zy</rhyme></l>
        <l id="s4:l3" met="3" type="-+">(Ghy moet het u niet <rhyme label="a" type="f" corresp="#s4:l1">belghen</rhyme>)</l>
        <l id="s4:l4" met="3" type="-+">En staet my niemant <rhyme label="b" type="m" corresp="#s4:l2">vry</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Te geven dan den <rhyme label="c" type="f">genen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Die voor het hoochste <rhyme label="d" type="m">lodt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Gheschickt heeft te <rhyme label="c" type="f" corresp="#s4:l5">verlenen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Mijn Vader, Heer, en <rhyme label="d" type="m" corresp="#s4:l6">Godt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Iacob, die met <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Den meerder hieten <rhyme label="b" type="m">meucht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Den Heer heeft op u <rhyme label="a" type="f" corresp="#s5:l1">heden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Wt sonderlinghe <rhyme label="b" type="m" corresp="#s5:l2">deucht</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Ghelijck hy hier <rhyme label="c" type="f">beloofde</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ghegheven u de <rhyme label="d" type="m">handt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Als u Herodes <rhyme label="c" type="f" corresp="#s5:l5">kloofde</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Den hals, het dierste <rhyme label="d" type="m" corresp="#s5:l6">pandt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Den kelck van zijn <rhyme label="a" type="f">lyden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Segh' ick dat lieve <rhyme label="b" type="m">vat</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die hem te syner <rhyme label="a" type="f" corresp="#s6:l1">tijden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Sijn Vader eerst <rhyme label="b" type="m" corresp="#s6:l2">toemat</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En hy nu weer <rhyme label="c" type="f">geschoncken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">U heeft op d'eyghe <rhyme label="d" type="m">plaets</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Daer hy hem hadd' <rhyme label="c" type="f" corresp="#s6:l5">ghedroncken</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Den eerste van u <rhyme label="d" type="m" corresp="#s6:l6">maets</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Weest vrolijck met den <rhyme label="a" type="f">Beecker</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dan naede mael ghy <rhyme label="b" type="m">nu</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Sijt voor u zielen <rhyme label="a" type="f" corresp="#s7:l1">seecker</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Soo isset dat wy <rhyme label="b" type="m" corresp="#s7:l2">u</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Ootmoedelijck <rhyme label="c" type="f">versoecken</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Door gunst van u <rhyme label="d" type="m">gebedt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Ons hier te willen <rhyme label="c" type="f" corresp="#s7:l5">kloecken</rhyme></l>
        <l id="s7:l8" met="3" type="-+">In u gepreeckte <rhyme label="d" type="m" corresp="#s7:l6">Wet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Op dat oock nae dit <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Heer Iesus onser <rhyme label="b" type="m">elck</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Wat deels belieft te <rhyme label="a" type="f" corresp="#s8:l1">geven</rhyme></l>
        <l id="s8:l4" met="3" type="-+">In zijn voornaemde <rhyme label="b" type="m" corresp="#s8:l2">Kelck</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Des sy wy 'tallen <rhyme label="c" type="f">tijden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Met u wel <rhyme label="d" type="m">ghemoet</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Te drincken, te <rhyme label="c" type="f" corresp="#s8:l5">verstrijden</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Het leste van ons <rhyme label="d" type="m" corresp="#s8:l6">bloedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
