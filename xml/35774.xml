    <melody>Het daagt in de oosten</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HAerlemsche <rhyme label="a" type="f">Batavieren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Heden met lijf en <rhyme label="b" type="m">geest</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wilt tot Godes lof <rhyme label="a" type="f" corresp="#s1:l1">vieren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Sinte Baefs waerde <rhyme label="b" type="m" corresp="#s1:l2">feest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sint Bavo is <rhyme label="a" type="f">geboren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Uyt Coninghlijcke <rhyme label="b" type="m">stam</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Sijn Ouders <rhyme label="a" type="f" corresp="#s2:l1">uytverkoren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dienden getrouw Godt <rhyme label="b" type="m" corresp="#s2:l2">Lam</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Tot d'Oorlogh hem <rhyme label="a" type="f">begeven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Heeft, en tot d' echte <rhyme label="b" type="m">juck</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In dat bekommert <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Vint niet als rouw en <rhyme label="b" type="m" corresp="#s3:l2">druck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als sijn Vrouws doodt <rhyme label="a" type="f">ontbonden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Heeft d'Houwelijcke <rhyme label="b" type="m">bandt</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Met blijdtschap heeft <rhyme label="a" type="f" corresp="#s4:l1">gevonden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In Vlaend'ren Sint <rhyme label="b" type="m" corresp="#s4:l2">Amand</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Van Amand laet hem <rhyme label="a" type="f">leyden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Als t' alderminste <rhyme label="b" type="m">kindt</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Al 't wereldts adieu <rhyme label="a" type="f" corresp="#s5:l1">seyden</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Godt alleen acht, en <rhyme label="b" type="m" corresp="#s5:l2">mint</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sijn Landen, Gelt en <rhyme label="a" type="f">Hoven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Aen Godt, en d' Armen <rhyme label="b" type="m">geeft</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Soeckt Godt alleen te <rhyme label="a" type="f" corresp="#s6:l1">loven</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Voor sonden schrickt en <rhyme label="b" type="m" corresp="#s6:l2">beeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Door 't vasten, slagen, <rhyme label="a" type="f">waecken</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sijn lichaem heel <rhyme label="b" type="m">kastijt</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Alleen in 's Hemels <rhyme label="a" type="f" corresp="#s7:l1">saecken</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Brengh over al sijn <rhyme label="b" type="m" corresp="#s7:l2">tijdt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Godt geeft sijn hart, en <rhyme label="a" type="f">leden</rhyme>:</l>
        <l id="s8:l2" met="3" type="-+">In deughden noyt stil <rhyme label="b" type="m">staet</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Verweckt een <rhyme label="a" type="f" corresp="#s8:l1">overleden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Van wie, hy was <rhyme label="b" type="m" corresp="#s8:l2">versmaet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">By nachten, en by <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Met mede-lijden <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Overdenckt Jesu <rhyme label="a" type="f" corresp="#s9:l1">plagen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Smart, wonden, pijn en <rhyme label="b" type="m" corresp="#s9:l2">doodt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Sijn geest leeft <rhyme label="a" type="f">op-getogen</rhyme>;</l>
        <l id="s10:l2" met="3" type="-+">Sijn hart geen aerd' en <rhyme label="b" type="m">raeckt</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">Geen lof heeft hem <rhyme label="a" type="f" corresp="#s10:l1">bedrogen</rhyme>;</l>
        <l id="s10:l4" met="3" type="-+">Tot niet sijn selven <rhyme label="b" type="m" corresp="#s10:l2">maeckt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Als een kruys, Godes <rhyme label="a" type="f">Soone</rhyme></l>
        <l id="s11:l2" met="3" type="-+">d'Heylige Baef <rhyme label="b" type="m">vertoont</rhyme>:</l>
        <l id="s11:l3" met="3" type="-+">Daer na met 's Hemels <rhyme label="a" type="f" corresp="#s11:l1">throone</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Sijn trouwe Dienaer <rhyme label="b" type="m" corresp="#s11:l2">loont</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
