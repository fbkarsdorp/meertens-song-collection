    <melody>Bacchus heeft ons de wijn besteld</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAnneer de Wielen van de <rhyme label="a" type="m">Keir</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Bestreken zyn met <rhyme label="a" type="m" corresp="#s1:l1">Smeir</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De Keir en maect dan geenen <rhyme label="b" type="m">tier</rhyme></l>
        <l id="s1:l4" met="3" type="-+">s'En kreunt dan niet een <rhyme label="b" type="m" corresp="#s1:l3">sier</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Een droevigh hert en kreunt dan <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Van alle syn <rhyme label="c" type="m" corresp="#s1:l5">verdriet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Wanneer syn droeve wielen <rhyme label="d" type="m">zyn</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Ghesmeirt met Bier en <rhyme label="d" type="m" corresp="#s1:l7">Wyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Ghy Droogist gy <rhyme label="a" type="m">Alchimist</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat ghy de kracht eens <rhyme label="a" type="m" corresp="#s2:l1">wist</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Van deson alder soetsten <rhyme label="b" type="m">Wyn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">g'En sout soo droogh niet <rhyme label="b" type="m" corresp="#s2:l3">zyn</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dat g'u droog hert eens wel <rhyme label="c" type="m">begôt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Met eenen verschen <rhyme label="c" type="m" corresp="#s2:l5">Pot</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Van desen Renschen koelen <rhyme label="d" type="m">Wyn</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Ghy soudt haest natter <rhyme label="d" type="m" corresp="#s2:l7">zyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ghy seght dat ghy beladen <rhyme label="a" type="m">zyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met schuldt en <rhyme label="a" type="m" corresp="#s3:l1">swarigheydt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ey worpt u sorgh op Godt den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En sorght soo seer niet <rhyme label="b" type="m" corresp="#s3:l3">meer</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Want al waer u droefhert <rhyme label="c" type="m">gewont</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met sorgh van duysent <rhyme label="c" type="m" corresp="#s3:l5">pondt</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Weet dat ghy niet een Oortjen <rhyme label="d" type="m">schuldt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Daer-med'betalen <rhyme label="d" type="m" corresp="#s3:l7">sult</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nemt van den Wyngaert-ranck u <rhyme label="a" type="m">meugh</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Drinckt eenen malschen <rhyme label="a" type="m" corresp="#s4:l1">teug</rhyme></l>
        <l id="s4:l3" met="4" type="-+">En sucht oft ducht soo seer niet <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Weest vrolyck in den <rhyme label="b" type="m" corresp="#s4:l3">Heer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ghelyck het Volck van <rhyme label="c" type="m">Israël</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Versetten syn <rhyme label="c" type="m" corresp="#s4:l5">ghequel</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Als Caleb ende <rhyme label="d" type="m">Josué</rhyme>.</l>
        <l id="s4:l8" met="3" type="-+">De Wyn-druyf broghten <rhyme label="d" type="m" corresp="#s4:l7">mé</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Eet ende drinckt uyt een Duyts <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Tot dat ghy vrolyck <rhyme label="a" type="m" corresp="#s5:l1">wert</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Spoelt en verkoelt u droeve <rhyme label="b" type="m">pyn</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In eenen Roomer <rhyme label="b" type="m" corresp="#s5:l3">wyn</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Hopt dat door Godts <rhyme label="c" type="m">bermhertigheydt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Sal beteren den <rhyme label="c" type="m" corresp="#s5:l5">tydt</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Helpt Godt ons hier niet uyt de <rhyme label="d" type="m">pyn</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Soo sal 't hier naer - maels <rhyme label="d" type="m" corresp="#s5:l7">zyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
