    <melody>Het stond een moeder rein</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IEsu ons liefd’, ons <rhyme label="a" type="f">wenschen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En ons verlosser <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Schepper van alle <rhyme label="a" type="f" corresp="#s1:l1">menschen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die al dat leeft hier <rhyme label="b" type="m" corresp="#s1:l2">voedt</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Wat liefd’ heeft v <rhyme label="b" type="m" corresp="#s1:l2">ghemoet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Te lijden <rhyme label="c" type="m">onghemack</rhyme>?</l>
        <l id="s1:l7" met="3" type="-+">Ia te storten v <rhyme label="b" type="m" corresp="#s1:l2">bloet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Draghend’ ons sondich <rhyme label="c" type="m" corresp="#s1:l6">pack</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dus hebt ghy willen <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Een alsoo bitter <rhyme label="b" type="m">doot</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Een doot tot gheenen <rhyme label="a" type="f" corresp="#s2:l1">tijden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Met schanden alsoo <rhyme label="b" type="m" corresp="#s2:l2">groot</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Om ons uyt onsen <rhyme label="b" type="m" corresp="#s2:l2">noot</rhyme></l>
        <l id="s2:l6" met="3" type="-+">En van  des vijands <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Te vrijden inden <rhyme label="b" type="m" corresp="#s2:l2">schoot</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Van uwer liefden <rhyme label="c" type="m" corresp="#s2:l6">kracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Heeft v dan soo <rhyme label="a" type="f">ghedwonghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dijn liefde, groot <rhyme label="b" type="m">minnaer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo moghen wel ons <rhyme label="a" type="f" corresp="#s3:l1">tonghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">V danckbaer zijn <rhyme label="b" type="m" corresp="#s3:l2">eenpaer</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Och iae sy, want <rhyme label="b" type="m" corresp="#s3:l2">voorwaer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ghevanghen laghen <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Maer deur v lijden <rhyme label="b" type="m" corresp="#s3:l2">swaer</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Sijn wy gheworden <rhyme label="c" type="m" corresp="#s3:l6">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den hemel was <rhyme label="a" type="f">ghesloten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die ons nu open <rhyme label="b" type="m">staet</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">V cruys dat heeft <rhyme label="a" type="f" corresp="#s4:l1">doorschoten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ghemurselt t’ Serpent <rhyme label="b" type="m" corresp="#s4:l2">quaet</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Deur v, ons <rhyme label="b" type="m" corresp="#s4:l2">toeuerlaet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Hebben wy vol <rhyme label="c" type="m">pardoen</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Van allen ons <rhyme label="b" type="m" corresp="#s4:l2">misdaet</rhyme>:</l>
        <l id="s4:l8" met="3" type="-+">Wat kost ghy ons meer <rhyme label="c" type="m" corresp="#s4:l6">doen</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">V moeten wy lof <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Met een danckbarich <rhyme label="b" type="m">woort</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Wy vaten vol <rhyme label="a" type="f" corresp="#s5:l1">ghebreken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">O Iesu ons <rhyme label="b" type="m" corresp="#s5:l2">aenhoort</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Al komt het traghe <rhyme label="b" type="m" corresp="#s5:l2">voort</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Aenmerckt ons <rhyme label="c" type="m">flauwicheydt</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Door v graci’ ons <rhyme label="b" type="m" corresp="#s5:l2">spoort</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Ter deucht, in <rhyme label="c" type="m" corresp="#s5:l6">eeuwicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
