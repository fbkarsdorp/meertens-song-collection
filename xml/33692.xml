  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">BY de <rhyme label="a" type="m">Jordaen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ioannes was aen 't <rhyme label="b" type="f">Doopen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">'t Volk dat quam met <rhyme label="b" type="f" corresp="#s1:l2">hoopen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van 't heele Joodtsche <rhyme label="c" type="m">Landt</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Om te <rhyme label="a" type="m" corresp="#s1:l1">ontfaen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Den Doop der <rhyme label="d" type="f">penitenti'</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Met goe' <rhyme label="d" type="f" corresp="#s1:l6">reverenti'</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Van Sint Ioannes <rhyme label="a" type="m" corresp="#s1:l1">handt</rhyme>.</l>
        <l id="s1:l9" met="4" type="-+">Toen quam daer ook al meed' <rhyme label="e" type="f">verschijne</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">By de Jordaen in de <rhyme label="e" type="f" corresp="#s1:l9">Woestijne</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Iesus by Sint <rhyme label="f" type="m">Ian</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Sijn Doop te neemen <rhyme label="f" type="m" corresp="#s1:l11">an</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Komt gy tot <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ioannes seydt met <rhyme label="b" type="f">vreesen</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Ik moet liever <rhyme label="b" type="f" corresp="#s2:l2">weesen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van u gedoopt, mijn <rhyme label="c" type="m">Heer</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Laet nu soo <rhyme label="a" type="m" corresp="#s2:l1">sijn</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Seydt Iesus weer met <rhyme label="d" type="f">reeden</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">De <rhyme label="d" type="f" corresp="#s2:l6">reghtvaerdigheeden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Te vullen ik <rhyme label="a" type="m" corresp="#s2:l1">begeer</rhyme>.</l>
        <l id="s2:l9" met="4" type="-+">Toen heeft Ioannes hem <rhyme label="e" type="f">gewasse</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">En hy klom uyt het water <rhyme label="e" type="f" corresp="#s2:l9">rasse</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Ende gingh hem <rhyme label="f" type="m">spoen</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Om sijn Gebedt te <rhyme label="f" type="m" corresp="#s2:l11">doen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Ende al <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hy hadt 't Gebedt <rhyme label="b" type="f">gesprooken</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">d'Hemel is <rhyme label="b" type="f" corresp="#s3:l2">ontlooken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Van waer den Heyl'gen <rhyme label="c" type="m">Geest</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Is gedaelt <rhyme label="a" type="m" corresp="#s3:l1">neer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Op hem in Duyfs <rhyme label="d" type="f">figure</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En op deeser <rhyme label="d" type="f" corresp="#s3:l6">ure</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Soo is 'er ook <rhyme label="a" type="m" corresp="#s3:l1">geweest</rhyme></l>
        <l id="s3:l9" met="4" type="-+">'s Hemelschen Vaders stemme <rhyme label="e" type="f">klare</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Die tot hem sprak in 't <rhyme label="e" type="f" corresp="#s3:l9">openbare</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Gy sijt mijn lief <rhyme label="f" type="m">Kindt</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Op wien ik ben <rhyme label="f" type="m" corresp="#s3:l11">gesindt</rhyme>.</l>
      </lg>
    </lg>
  </text>
