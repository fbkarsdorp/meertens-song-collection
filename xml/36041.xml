  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Iesu <rhyme label="a" type="m">Pellikaen</rhyme></l>
        <l id="s1:l2" met="5" type="-+">Vol liefde, ghy laet uw borst oock open <rhyme label="a" type="m" corresp="#s1:l1">staen</rhyme></l>
        <l id="s1:l3" met="2" type="-+">In mijnen <rhyme label="b" type="m">noodt</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">En inde <rhyme label="b" type="m" corresp="#s1:l3">doodt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ghy sijt mijn hoop’, en mijnen <rhyme label="b" type="m" corresp="#s1:l3">schoot</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Uw zijde, vol lijden, vol <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Sal sijn mijn <rhyme label="c" type="m" corresp="#s1:l6">medecijn</rhyme>.</l>
        <l id="s1:l8" met="2" type="-+">Uw heyligh <rhyme label="d" type="m">bloedt</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Mijn hert <rhyme label="d" type="m" corresp="#s1:l8">versoet</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">En weer mijn liefde leven <rhyme label="d" type="m" corresp="#s1:l8">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Door uwe diepe <rhyme label="a" type="m">Wondt</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">O Iesu! ghy laet my sien uws herten <rhyme label="a" type="m" corresp="#s2:l1">grondt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">En door uw <rhyme label="b" type="m">Cruys</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Van sonden <rhyme label="b" type="m" corresp="#s2:l3">kuys</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Leydt my weer in uws Vaders <rhyme label="b" type="m" corresp="#s2:l3">huys</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">O Leven verheven, u <rhyme label="c" type="m">reyn</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Fonteyn hier <rhyme label="c" type="m" corresp="#s2:l6">algemeyn</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Vloeyt uyt uw <rhyme label="d" type="m">borst</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Voor mijnen <rhyme label="d" type="m" corresp="#s2:l8">dorst</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">En weer ontdoyt al mijnen <rhyme label="d" type="m" corresp="#s2:l8">Vorst</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Nu is voor my de <rhyme label="a" type="m">deur</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Ontsloten, den langh-voorseyde steene <rhyme label="a" type="m" corresp="#s3:l1">scheur</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Mijn <rhyme label="b" type="m">Toeverlaet</rhyme></l>
        <l id="s3:l4" met="2" type="-+">In alle <rhyme label="b" type="m" corresp="#s3:l3">quaet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Die voor u Duyfken open <rhyme label="b" type="m" corresp="#s3:l3">staet</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Hier vlied’ ick, hier mijd’ ick, <rhyme label="c" type="m">veracht</rhyme></l>
        <l id="s3:l7" met="3" type="-+">De kracht van d’helsche <rhyme label="c" type="m" corresp="#s3:l6">macht</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Die my <rhyme label="d" type="m">beset</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">En niet en <rhyme label="d" type="m" corresp="#s3:l8">let</rhyme>.</l>
        <l id="s3:l10" met="4" type="-+">In Iesus herte vast <rhyme label="d" type="m" corresp="#s3:l8">geset</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">ô Langh gewenste <rhyme label="a" type="m">gangh</rhyme></l>
        <l id="s4:l2" met="5" type="-+">Waer door ick van uwe groote liefde <rhyme label="a" type="m" corresp="#s4:l1">kranck</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Kom in u <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Vol pijn, en <rhyme label="b" type="m" corresp="#s4:l3">smert</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">In mijne doornen heel <rhyme label="b" type="m" corresp="#s4:l3">verwert</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Mijn ruste, mijn luste zijt <rhyme label="c" type="m">ghy</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Voor my, Gequetste <rhyme label="c" type="m" corresp="#s4:l6">zy</rhyme>’!</l>
        <l id="s4:l8" met="2" type="-+">Voortaen ick <rhyme label="d" type="m">woon</rhyme></l>
        <l id="s4:l9" met="2" type="-+">In dese <rhyme label="d" type="m" corresp="#s4:l8">Throon</rhyme>;</l>
        <l id="s4:l10" met="4" type="-+">Mijn nestjen is uw doorne <rhyme label="d" type="m" corresp="#s4:l8">Kroon</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Liefde boven <rhyme label="a" type="m">all</rhyme>’</l>
        <l id="s5:l2" met="5" type="-+">De liefden, ontsteken oyt in ‘t aerdtsche <rhyme label="a" type="m" corresp="#s5:l1">dal</rhyme>!</l>
        <l id="s5:l3" met="2" type="-+">Ghy mijnen <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Comt tot my <rhyme label="b" type="m" corresp="#s5:l3">neer</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Om uwe Slaef te lossen <rhyme label="b" type="m" corresp="#s5:l3">weer</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Uw Wonde mijn sonde, mijn <rhyme label="c" type="m">straf</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Neemt af, haelt uyt het <rhyme label="c" type="m" corresp="#s5:l6">graf</rhyme>.</l>
        <l id="s5:l8" met="2" type="-+">O <rhyme label="d" type="m">Pellikaen</rhyme>!</l>
        <l id="s5:l9" met="2" type="-+">Ons is <rhyme label="d" type="m" corresp="#s5:l8">voldaen</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Uw Ionghskens sijn weer <rhyme label="d" type="m" corresp="#s5:l8">opgestaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
