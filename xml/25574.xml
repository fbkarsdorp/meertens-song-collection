      <tag translation="scripture song">schriftuurlijk lied</tag>
      <tag translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Naar oostland wil ik varen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Een Liedt moet ick <rhyme label="a" type="f">opheuen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Tot een vermaen, hoort mijn <rhyme label="b" type="m">ghewach</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Aen v mijn lieue Kinderen <rhyme label="a" type="f" corresp="#s1:l1">geschreuen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Of het die Heer also <rhyme label="b" type="m" corresp="#s1:l2">versach</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dat hy my haest <rhyme label="c" type="f">ontladen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">En verlosten my wt het <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dus soud ick v gaern <rhyme label="c" type="f" corresp="#s1:l5">raden</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Of die Heer door sijn <rhyme label="c" type="f" corresp="#s1:l5">genaden</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">V totten verstande coemen <rhyme label="d" type="m" corresp="#s1:l6">liet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ten eersten wilt hier op <rhyme label="a" type="f">achten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat ghy trou van handen <rhyme label="b" type="m">syt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">V oock voor achterclap wilt <rhyme label="a" type="f" corresp="#s2:l1">wachten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Van dat daer ten huyse <rhyme label="b" type="m" corresp="#s2:l2">geschiet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Wiens Broot dat gy moecht <rhyme label="c" type="f">eeten</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">V als eerbaer Dochters <rhyme label="d" type="m">bewijst</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Op dat se van v niet en <rhyme label="c" type="f" corresp="#s2:l5">reden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Dan van alle goede <rhyme label="c" type="f" corresp="#s2:l5">seden</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Want een goet Gheruchte Salomon seer <rhyme label="d" type="m" corresp="#s2:l6">prijst</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ten tweden wil ick v gaen <rhyme label="a" type="f">beden</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Wt liefden die niet en <rhyme label="b" type="m">versmaet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dat gy wandelen met cuischen <rhyme label="a" type="f" corresp="#s3:l1">seden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Waer dat gy coemt daer gaet of <rhyme label="b" type="m" corresp="#s3:l2">staet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat ghy v wilt <rhyme label="c" type="f">ontrecken</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Al van des Werelts <rhyme label="d" type="m">gespel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Al souden sy v <rhyme label="c" type="f" corresp="#s3:l5">begecken</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Wilt v met haer niet <rhyme label="c" type="f" corresp="#s3:l5">beulecken</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Haet het all ende versmaet haer <rhyme label="d" type="m" corresp="#s3:l6">deel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ten Derden hout in <rhyme label="a" type="f">gedachten</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Wat Syrach sijn Kint noch <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wilt v seluen niet hooch <rhyme label="a" type="f" corresp="#s4:l1">achten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Maer altijt v daer <rhyme label="b" type="m" corresp="#s4:l2">verneert</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Laet die hoechmoet nz <rhyme label="c" type="f">heerschappien</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">In woorden of wercken <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Maer v vernedert na schrift <rhyme label="c" type="f" corresp="#s4:l5">belijen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">So sult ghy v hier na <rhyme label="c" type="f" corresp="#s4:l5">verblijen</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Want hoechmoet die gaet voor den <rhyme label="d" type="m" corresp="#s4:l6">val</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Na het Woort Tobias wilt <rhyme label="a" type="f">pogen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat hy sijn Kint daer <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hout Godt altijt voor <rhyme label="a" type="f" corresp="#s5:l1">oogen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">In geen Sonden en <rhyme label="b" type="m" corresp="#s5:l2">concenteert</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Weert v voeten haren <rhyme label="c" type="f">paeden</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Siet dat gy v Siel <rhyme label="d" type="m">beurijt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Want wee die Gods woort <rhyme label="c" type="f" corresp="#s5:l5">versmaeden</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Haer met sonden gaen <rhyme label="c" type="f" corresp="#s5:l5">belaeden</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Haer eynde sal syn een bedroefde <rhyme label="d" type="m" corresp="#s5:l6">tijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gaet altijt by den <rhyme label="a" type="f">Vromen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En vraecht altijt den wijsen om <rhyme label="b" type="m">raedt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Waertoe dat ghy moecht <rhyme label="a" type="f" corresp="#s6:l1">comen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Betrout op Godt die niet en <rhyme label="b" type="m" corresp="#s6:l2">verlaet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Wilt v in sijn woort <rhyme label="c" type="f">vâ€™seeren</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En oeffent u <rhyme label="d" type="m">daerin</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Claecht en bidt met woort des <rhyme label="c" type="f" corresp="#s6:l5">Heren</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Soeckt hem al int <rhyme label="c" type="f" corresp="#s6:l5">verneeren</rhyme>,</l>
        <l id="s6:l9" met="4" type="-+">Clopt aen hy sal v laten <rhyme label="d" type="m" corresp="#s6:l6">in</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Syrach leyt zijn Kint voor <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die selfde oock niet en <rhyme label="b" type="m">versmaet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wat v ouer coemt wilt <rhyme label="a" type="f" corresp="#s7:l1">gedogen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En wanckelt niet, hoe dat v <rhyme label="b" type="m" corresp="#s7:l2">gaet</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Denct altijt op den <rhyme label="c" type="f">vromen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Die voor v hebben <rhyme label="d" type="m">gheweest</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Waer toe Iob is <rhyme label="c" type="f" corresp="#s7:l5">gecoemen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Godt heeft hem al <rhyme label="c" type="f" corresp="#s7:l5">benoemen</rhyme>,</l>
        <l id="s7:l9" met="4" type="-+">Daer bouen begeckt alsomen <rhyme label="d" type="m" corresp="#s7:l6">leest</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">En diergelijcken <rhyme label="a" type="f">meede</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Alsmen noch van Tobias <rhyme label="b" type="m">leest</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dien den Dooden daer wech <rhyme label="a" type="f" corresp="#s8:l1">deden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Met Broot der droefheyt hielt hy zijnen <rhyme label="b" type="m" corresp="#s8:l2">Feest</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Noch ginck hem Godt <rhyme label="c" type="f">proberen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Met blintheyt is hy <rhyme label="d" type="m">besocht</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Hy prees den Naem des <rhyme label="c" type="f" corresp="#s8:l5">Heeren</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Het staet al tot onser <rhyme label="c" type="f" corresp="#s8:l5">leere</rhyme>,</l>
        <l id="s8:l9" met="4" type="-+">Noch hoe Iopseph is is in Egypten <rhyme label="d" type="m" corresp="#s8:l6">vercocht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Van dat hem Godt <rhyme label="a" type="f">openbaerden</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Zijn Broeders dien hijt te kennen <rhyme label="b" type="m">geft</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Den droom dien hy haer <rhyme label="a" type="f" corresp="#s9:l1">verclaerden</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Hierom benijden sy hem <rhyme label="b" type="m" corresp="#s9:l2">meest</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En spraecken als het is <rhyme label="c" type="f">gebleken</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Daer coemt den Droomer <rhyme label="d" type="m">gaen</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Inden put gingen sy hem <rhyme label="c" type="f" corresp="#s9:l5">steecken</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Die  Heer dit al sal <rhyme label="c" type="f" corresp="#s9:l5">wreken</rhyme>,</l>
        <l id="s9:l9" met="4" type="-+">Die Figuer mach wel op Christo <rhyme label="d" type="m" corresp="#s9:l6">bestaen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wie niet met Christo na Ioseph <rhyme label="a" type="f">gelijck</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Inden put figuerlijck gesmeten <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die en coemt niet tot sijnen <rhyme label="a" type="f" corresp="#s10:l1">Rijcke</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Daer hy een Heer ouer <rhyme label="b" type="m" corresp="#s10:l2">is</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Ouer geheel Egypten <rhyme label="c" type="f">Lande</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Daer hem de Coninck heeft ouer <rhyme label="d" type="m">gestelt</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Kinderen vaet dit <rhyme label="c" type="f" corresp="#s10:l5">vrestant</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Den dierte coemt voor <rhyme label="c" type="f" corresp="#s10:l5">hande</rhyme>,</l>
        <l id="s10:l9" met="4" type="-+">Loopt tot hem coopt sonder <rhyme label="d" type="m" corresp="#s10:l6">gelt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Den voorsichtigen Ioseph <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Het was van Godt alsoo <rhyme label="b" type="m">voorsien</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Dat hy Spyse voor zijn Broeders op <rhyme label="a" type="f" corresp="#s11:l1">deden</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Godt wist wel wz daer souden <rhyme label="b" type="m" corresp="#s11:l2">geschien</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Also heeft Christus <rhyme label="c" type="f">beneuen</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Daer Spijse genoech <rhyme label="d" type="m">bereyt</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Om syn Broeders daer te <rhyme label="c" type="f" corresp="#s11:l5">geuen</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Waer door dat sy moegen <rhyme label="c" type="f" corresp="#s11:l5">leeuen</rhyme>,</l>
        <l id="s11:l9" met="4" type="-+">Het is van synen Doot <rhyme label="d" type="m" corresp="#s11:l6">geseyt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Want syn Steruen is onse <rhyme label="a" type="f">Leuen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Wilt ghy zijn Doot deelachtich <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Soo moet gy v <rhyme label="a" type="f" corresp="#s12:l1">ouergeuen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Het Vleys te cruyssen al ist v <rhyme label="b" type="m" corresp="#s12:l2">pijn</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Want die Christo <rhyme label="c" type="f">toebehooren</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Die hebben haer leuen <rhyme label="d" type="m">versaeckt</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Niet meer te wandelen als te <rhyme label="c" type="f" corresp="#s12:l5">vooren</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Mer na den Geest van nieus <rhyme label="c" type="f" corresp="#s12:l5">herbooren</rhyme>,</l>
        <l id="s12:l9" met="4" type="-+">Als Christus ghesint, daer Hemels <rhyme label="d" type="m" corresp="#s12:l6">smaeckt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Als Christus hem liet <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Tot Nicodemo9 na Schrift <rhyme label="b" type="m">bedyen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Ten dat ghy weet van nieus <rhyme label="a" type="f" corresp="#s13:l1">ghebooren</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Of ghy en moecht Godts Rijck niet <rhyme label="b" type="m" corresp="#s13:l2">sien</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Wt den Water en Geest <rhyme label="c" type="f">beneuen</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Als is <rhyme label="d" type="m">gepropheteert</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Ioel die heeft het <rhyme label="c" type="f" corresp="#s13:l5">beschreuen</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Die beloften wort nu <rhyme label="c" type="f" corresp="#s13:l5">gegeuen</rhyme>,</l>
        <l id="s13:l9" met="4" type="-+">Indien voldaen, wie hem <rhyme label="d" type="m" corresp="#s13:l6">bekeert</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Romeynen int vijften wilt door <rhyme label="a" type="f">kijiken</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Int sesten oock wel <rhyme label="b" type="m">doorsiet</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Int achten des <rhyme label="a" type="f" corresp="#s14:l1">gelijcken</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Wat hy noch int twaelften <rhyme label="b" type="m" corresp="#s14:l2">gebiet</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Collostency inden <rhyme label="c" type="f">drieden</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Epheseren int vierden, <rhyme label="d" type="m">verstaet</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Wat noch Petrus gaet <rhyme label="c" type="f" corresp="#s14:l5">bedieden</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">In zijn eersten Brief int <rhyme label="c" type="f" corresp="#s14:l5">tweeden</rhyme>,</l>
        <l id="s14:l9" met="4" type="-+">Ondersoeckt die Schrift nae Christi <rhyme label="d" type="m" corresp="#s14:l6">raet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Wilt die Schriftuer <rhyme label="a" type="f">doorgronden</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Met aendacht die wel <rhyme label="b" type="m">doorsiet</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Want den schade wort niet <rhyme label="a" type="f" corresp="#s15:l1">geuonden</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Lichtuaerdicch so Christus <rhyme label="b" type="m" corresp="#s15:l2">bediet</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Sy leyt inden Acker <rhyme label="c" type="f">verholen</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">Daer moet om gearbeit <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">Met vlijt of hy sal <rhyme label="c" type="f" corresp="#s15:l5">dolen</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Dringt door die Poort, wort hem <rhyme label="c" type="f" corresp="#s15:l5">beuolen</rhyme>,</l>
        <l id="s15:l9" met="4" type="-+">Die daer vraechden, of daer wel veel salich sout <rhyme label="d" type="m" corresp="#s15:l6">syn</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Ick bid v mijn lieue Kinder in <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Ws Vaders gebeden <rhyme label="b" type="m">verhoort</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Oeffent v in Godts woort te <rhyme label="a" type="f" corresp="#s16:l1">leesen</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Tot dat gy verstaet den nieu <rhyme label="b" type="m" corresp="#s16:l2">eerboort</rhyme></l>
        <l id="s16:l5" met="3" type="-+">Want sulcx moet <rhyme label="c" type="f">geschieden</rhyme>,</l>
        <l id="s16:l6" met="4" type="-+">Die Godt behaegen <rhyme label="d" type="m">sal</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Het inhout na Schrift <rhyme label="c" type="f" corresp="#s16:l5">bedieden</rhyme>,</l>
        <l id="s16:l8" met="3" type="-+">Zijn wellusten moet men <rhyme label="c" type="f" corresp="#s16:l5">vlieden</rhyme>,</l>
        <l id="s16:l9" met="4" type="-+">En wandelen den wech seer <rhyme label="d" type="m" corresp="#s16:l6">smael</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Desen wech is smael om te <rhyme label="a" type="f">treden</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Die daer tot den leeuen <rhyme label="b" type="m">leyt</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">En weinich vintmen daer <rhyme label="a" type="f" corresp="#s17:l1">meede</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Als Christus heeft <rhyme label="b" type="m" corresp="#s17:l2">geseyt</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">Zijn woorden en sijn geen <rhyme label="c" type="f">droomen</rhyme>,</l>
        <l id="s17:l6" met="4" type="-+">Och Kinderen hier wel op <rhyme label="d" type="m">siet</rhyme>,</l>
        <l id="s17:l7" met="3" type="-+">Al ist dat haer veel <rhyme label="c" type="f" corresp="#s17:l5">beroemen</rhyme>,</l>
        <l id="s17:l8" met="3" type="-+">Daer sullen der weinich binnen <rhyme label="c" type="f" corresp="#s17:l5">comen</rhyme>,</l>
        <l id="s17:l9" met="4" type="-+">Wie nz van herten tot God en <rhyme label="d" type="m" corresp="#s17:l6">vliet</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Als ghy coemt tot dese <rhyme label="a" type="f">daegen</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Als bouen het Liedt <rhyme label="b" type="m">vermelt</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Soect nz om den Menschen te <rhyme label="a" type="f" corresp="#s18:l1">behaegen</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Het wtwendich weesen niet en <rhyme label="b" type="m" corresp="#s18:l2">gelt</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">Maer alleen om Godt te <rhyme label="c" type="f">dienen</rhyme>,</l>
        <l id="s18:l6" met="4" type="-+">Want hy sal de Betaelder <rhyme label="d" type="m">syn</rhyme>,</l>
        <l id="s18:l7" met="3" type="-+">Dus wilt v altijt <rhyme label="c" type="f" corresp="#s18:l5">vercleynen</rhyme>,</l>
        <l id="s18:l8" met="3" type="-+">Om Godts Rijck also ick <rhyme label="c" type="f" corresp="#s18:l5">meine</rhyme>,</l>
        <l id="s18:l9" met="4" type="-+">Neemt op het Cruys al ist v <rhyme label="d" type="m" corresp="#s18:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Tot een besluyt is mijnen <rhyme label="a" type="f">beeden</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Laet het v toch ter baeten <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">En acht niet cleyn dit weynich van <rhyme label="a" type="f" corresp="#s19:l1">reeden</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Ick meen hiermede uwes Vaders <rhyme label="b" type="m" corresp="#s19:l2">vermaen</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Wilt het bouen v bruydtschat <rhyme label="c" type="f">beminnen</rhyme>,</l>
        <l id="s19:l6" met="4" type="-+">Het sal beter vercieren dan <rhyme label="d" type="m">Gout</rhyme>,</l>
        <l id="s19:l7" met="3" type="-+">Want geen heerlicker Cleet en weet ick te <rhyme label="c" type="f" corresp="#s19:l5">vinnen</rhyme>,</l>
        <l id="s19:l8" met="3" type="-+">Dan die Christus aen heeft inweâ€™dich van <rhyme label="c" type="f" corresp="#s19:l5">binnen</rhyme>,</l>
        <l id="s19:l9" met="4" type="-+">Maer dit moet nae den Geest zijn <rhyme label="d" type="m" corresp="#s19:l6">aanschout</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
