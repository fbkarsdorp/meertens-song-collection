    <melody>Amour tu me fais trop souffrir</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Myn liefst Cloris niet soo <rhyme label="a" type="m">wreet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Myn liefst Cloris niet soo <rhyme label="a" type="m" corresp="#s1:l1">wreet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick en ded' u toch, noyt gheen <rhyme label="a" type="m" corresp="#s1:l1">leet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat ghy my scheynt te <rhyme label="b" type="f">haeten</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Liefste wilt toch deês wreetheydt <rhyme label="b" type="f" corresp="#s1:l4">laeten</rhyme>.</l>
        <l id="s1:l6" met="4" type="-+">Liefste wilt toch deês wreetheydt <rhyme label="b" type="f" corresp="#s1:l4">laeten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Thyrsis 'ten is gheen straf <rhyme label="a" type="m">ghemoet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Thyrsis 'ten is gheen straf <rhyme label="a" type="m" corresp="#s2:l1">ghemoet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'tWelck my van u verwalghen <rhyme label="a" type="m" corresp="#s2:l1">doet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Het zyn u eyghen <rhyme label="b" type="f">daeden</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dat ghy myn gunste wilt <rhyme label="b" type="f" corresp="#s2:l4">versmaeden</rhyme>.</l>
        <l id="s2:l6" met="4" type="-+">Dat ghy myn gunste wilt <rhyme label="b" type="f" corresp="#s2:l4">versmaeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">U gunst en heb ick noyt <rhyme label="a" type="m">veracht</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">U gunst en heb ick noyt <rhyme label="a" type="m" corresp="#s3:l1">veracht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Maer t'uwen dienst al-tydt <rhyme label="a" type="m" corresp="#s3:l1">ghetracht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Scheen ick u te <rhyme label="b" type="f">ontvlieden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">'kSal u te meerder eer gaen <rhyme label="b" type="f" corresp="#s3:l4">bieden</rhyme>.</l>
        <l id="s3:l6" met="4" type="-+">'kSal u te meerder eer gaen <rhyme label="b" type="f" corresp="#s3:l4">bieden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Van 'tgheen men mint, en gheren <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Van 'tgheen men mint, en gheren <rhyme label="a" type="m" corresp="#s4:l1">siet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En vlucht-men, oft en schouwt-men <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Waer't ghy strantvast <rhyme label="b" type="f">ghebleven</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ghy sout noch in myn liefde <rhyme label="b" type="f" corresp="#s4:l4">leven</rhyme>.</l>
        <l id="s4:l6" met="4" type="-+">Ghy sout noch in myn liefde <rhyme label="b" type="f" corresp="#s4:l4">leven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Heb ick van u my wat <rhyme label="a" type="m">vervremt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Heb ick van u my wat <rhyme label="a" type="m" corresp="#s5:l1">vervremt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">'kBid' u dat ghy't ten besten <rhyme label="a" type="m" corresp="#s5:l1">nemt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Naer buyen, en stuer <rhyme label="b" type="f">weder</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Keert de Son al-tydt klaerder <rhyme label="b" type="f" corresp="#s5:l4">weder</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Keert de Son al-tydt klaerder <rhyme label="b" type="f" corresp="#s5:l4">weder</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">'kSweir u dan liefste boven <rhyme label="a" type="m">al</rhyme>.</l>
        <l id="s6:l2" met="4" type="-+">'kSweir u dan liefste boven <rhyme label="a" type="m" corresp="#s6:l1">al</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Dat ick u noyt verlaeten <rhyme label="a" type="m" corresp="#s6:l1">sal</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Maer tot ter doodt sal <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">En dat ghy 'tsuer in't suet sult <rhyme label="b" type="f" corresp="#s6:l4">keeren</rhyme>.</l>
        <l id="s6:l6" met="4" type="-+">En dat ghy 'tsuer in't suet sult <rhyme label="b" type="f" corresp="#s6:l4">keeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
