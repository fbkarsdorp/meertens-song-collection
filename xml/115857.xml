  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Beminnaars van de <rhyme label="a" type="f">vreugde</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Laat ons eens vrolik <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wanneer 't geschiet in <rhyme label="a" type="f" corresp="#s1:l1">deugde</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Men verheugt zich by de <rhyme label="b" type="m" corresp="#s1:l2">wyn</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Want de wyn is <rhyme label="c" type="f">gegeven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Tot de vreugt van ons <rhyme label="d" type="m">hert</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En om vernoegt te <rhyme label="c" type="f" corresp="#s1:l5">leven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Schoon 't van zorg omcingelt <rhyme label="d" type="m" corresp="#s1:l6">werd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Verdrenken wy de <rhyme label="a" type="f">pynen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En angsten daar een <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Dat laf is, om gaat <rhyme label="a" type="f" corresp="#s2:l1">quynen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En zich zelf in zorg <rhyme label="b" type="m" corresp="#s2:l2">verwerd</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Komen ons de oude <rhyme label="c" type="f">dagen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Al verhaast men die <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Niet vroeg genoeg na <rhyme label="c" type="f" corresp="#s2:l5">jagen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Schoon men steeds niet treurig <rhyme label="d" type="m" corresp="#s2:l6">ziet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Weest vrolik by de <rhyme label="a" type="f">vrienden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Alwaar de vreugde <rhyme label="b" type="m">past</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die daar de blydschap <rhyme label="a" type="f" corresp="#s3:l1">binden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Strekken and'ren tot een <rhyme label="b" type="m" corresp="#s3:l2">last</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Daar 's een tyd van te <rhyme label="c" type="f">zorgen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En van verheugt te <rhyme label="d" type="m">zyn</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Stel 't zorgen uit tot <rhyme label="c" type="f" corresp="#s3:l5">morgen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Weest verheugt by spyze en <rhyme label="d" type="m" corresp="#s3:l6">wyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
