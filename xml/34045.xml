    <melody>Moet ik dus treuren</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">O <rhyme label="a" type="f">Constantijne</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">O vroom Romeynsche <rhyme label="b" type="m">heldt</rhyme>!</l>
        <l id="s1:l3" met="2" type="-+">Wat saeght gy <rhyme label="a" type="f" corresp="#s1:l1">schyne</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Terwijl gy stondt in 't <rhyme label="b" type="m" corresp="#s1:l2">veldt</rhyme>?</l>
        <l id="s1:l5" met="2" type="-+">'k Sagh in de <rhyme label="c" type="m">lught</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Niet sonder alle <rhyme label="d" type="f">vreesen</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">'k Was seer <rhyme label="c" type="m" corresp="#s1:l5">bedught</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wat of het moghte <rhyme label="d" type="f" corresp="#s1:l6">weesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Een Kruys seer <rhyme label="a" type="f">klare</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met gulde <rhyme label="b" type="m">letteren</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Werd' ik <rhyme label="a" type="f" corresp="#s2:l1">geware</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In d' luchte <rhyme label="b" type="m" corresp="#s2:l2">glinsteren</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Men kost se <rhyme label="c" type="m">wel</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Perfectelijke <rhyme label="d" type="f">leesen</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">'t Was, hier door <rhyme label="c" type="m" corresp="#s2:l5">sel</rhyme></l>
        <l id="s2:l8" met="3" type="-+">By u victori <rhyme label="d" type="f" corresp="#s2:l6">weesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">In mijn <rhyme label="a" type="f">gedaghte</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Was ik met sorgh <rhyme label="b" type="m">bevaen</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Maer t' <rhyme label="a" type="f" corresp="#s3:l1">midder-naghte</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Quam Christus by mijn <rhyme label="b" type="m" corresp="#s3:l2">staen</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Met 't Kruyces <rhyme label="c" type="m">beeldt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Als 't was vertoont by <rhyme label="d" type="f">dage</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">En mijn <rhyme label="c" type="m" corresp="#s3:l5">beveelt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dat ik soo een souw <rhyme label="d" type="f" corresp="#s3:l6">drage</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">En 't Kruys <rhyme label="a" type="f">oprechten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Tot een heylsaem <rhyme label="b" type="m">standaert</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">En soo <rhyme label="a" type="f" corresp="#s4:l1">bevechten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Victori <rhyme label="b" type="m" corresp="#s4:l2">onvervaert</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">'k Heb soo <rhyme label="c" type="m">gedaen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Gelijk getuyght <rhyme label="d" type="f">d'Histori</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">En soo <rhyme label="c" type="m" corresp="#s4:l5">ontfaen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Seer wonderlijk <rhyme label="d" type="f" corresp="#s4:l6">victori</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">De seer <rhyme label="a" type="f">deught-rijke</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Helena, <rhyme label="b" type="m">Keyserin</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Wordt <rhyme label="a" type="f" corresp="#s5:l1">desgelijke</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Gegeeven in den <rhyme label="b" type="m" corresp="#s5:l2">sin</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Dat sy ook <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Het Kruys van grooter <rhyme label="d" type="f">waerde</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Met grooter <rhyme label="c" type="m" corresp="#s5:l5">spoet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Doen graven uyt de <rhyme label="d" type="f" corresp="#s5:l6">Aerde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">De <rhyme label="a" type="f">Keyserinne</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Reyst nae den bergh <rhyme label="b" type="m">Golgoot</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Een <rhyme label="a" type="f" corresp="#s6:l1">Afgodinne</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Vrouw Venus naekt en <rhyme label="b" type="m" corresp="#s6:l2">bloot</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Al te <rhyme label="c" type="m">onkuys</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Stont daer; dat men niet <rhyme label="d" type="f">meere</rhyme></l>
        <l id="s6:l7" met="2" type="-+">Het Heyligh <rhyme label="c" type="m" corresp="#s6:l5">Kruys</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Daer soude koomen <rhyme label="d" type="f" corresp="#s6:l6">eere</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Strax is het <rhyme label="a" type="f">boosen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Afgodts-beelt <rhyme label="b" type="m">neer-gevelt</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Dat van <rhyme label="a" type="f" corresp="#s7:l1">Godtloosen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Uyt spijt daer was <rhyme label="b" type="m" corresp="#s7:l2">gestelt</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">En men <rhyme label="c" type="m">begindt</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Te graven met der <rhyme label="d" type="f">vaerde</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Tot dat men <rhyme label="c" type="m" corresp="#s7:l5">vindt</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Drie Kruyssen onder d' <rhyme label="d" type="f" corresp="#s7:l6">Aerde</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Seer groote <rhyme label="a" type="f">vreesen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ontstonden hier nu <rhyme label="b" type="m">weer</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Welk of moght <rhyme label="a" type="f" corresp="#s8:l1">weesen</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Het Kruys van onsen <rhyme label="b" type="m" corresp="#s8:l2">Heer</rhyme>;</l>
        <l id="s8:l5" met="2" type="-+">Maer men gaet <rhyme label="c" type="m">heen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Strax dees drie Kruyssen <rhyme label="d" type="f">houwe</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Elk een voor <rhyme label="c" type="m" corresp="#s8:l5">een</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Op een doodt-sieke <rhyme label="d" type="f" corresp="#s8:l6">vrouwe</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">O wonder <rhyme label="a" type="f">saeken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Siet een mirakel <rhyme label="b" type="m">groot</rhyme>!</l>
        <l id="s9:l3" met="2" type="-+">Door 't Kruys <rhyme label="a" type="f" corresp="#s9:l1">aenraeken</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Wordt wegh-gejaeght de <rhyme label="b" type="m" corresp="#s9:l2">doodt</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">En soo <rhyme label="c" type="m">terstondt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Wordt dees doodt-sieke <rhyme label="d" type="f">mensche</rhyme></l>
        <l id="s9:l7" met="2" type="-+">Kloek en <rhyme label="c" type="m" corresp="#s9:l5">gesondt</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Soo fris als men souw' <rhyme label="d" type="f" corresp="#s9:l6">wensche</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Laet ons de <rhyme label="a" type="f">quaden</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Vyanden van Goods <rhyme label="b" type="m">Kruys</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">t' Samen <rhyme label="a" type="f" corresp="#s10:l1">versmaden</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Als Goddeloos <rhyme label="b" type="m" corresp="#s10:l2">gespuys</rhyme>:</l>
        <l id="s10:l5" met="2" type="-+">Want al haer <rhyme label="c" type="m">list</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Strekt, om dat 't Kruyces <rhyme label="d" type="f">glori</rhyme></l>
        <l id="s10:l7" met="2" type="-+">Souw' <rhyme label="c" type="m" corresp="#s10:l5">uytgewist</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Sijn uyt 's menschen <rhyme label="d" type="f" corresp="#s10:l6">memori</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Wy <rhyme label="a" type="f">glorieeren</rhyme></l>
        <l id="s11:l2" met="3" type="-+">In geene ander <rhyme label="b" type="m">saek</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Dan 't Kruys des <rhyme label="a" type="f" corresp="#s11:l1">Heeren</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Waer door den Helschen <rhyme label="b" type="m" corresp="#s11:l2">draek</rhyme></l>
        <l id="s11:l5" met="2" type="-+">Is <rhyme label="c" type="m">omgebraght</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">En tot het eeuwigh <rhyme label="d" type="f">leeven</rhyme></l>
        <l id="s11:l7" met="2" type="-+">Het mensch <rhyme label="c" type="m" corresp="#s11:l5">geslaght</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Geluckigh is <rhyme label="d" type="f" corresp="#s11:l6">verheeven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
