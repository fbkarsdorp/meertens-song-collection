    <melody>Hoor Kees mijn vrijer</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">‘Waer blyft mijn <rhyme label="a" type="f">Herder</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Het is al meer dan <rhyme label="b" type="m">tijd</rhyme>.</l>
        <l id="s1:l3" met="2" type="-+">Ik ga al <rhyme label="a" type="f" corresp="#s1:l1">verder</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Als hy mijn had <rhyme label="b" type="m" corresp="#s1:l2">geseid</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">De tijd is lang <rhyme label="c" type="m">voorby</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Daer ik sou in de <rhyme label="c" type="m" corresp="#s1:l5">wey</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hem met mijn schaepjes <rhyme label="d" type="f">wachten</rhyme>.</l>
        <l id="s1:l8" met="3" type="-+">Of sou dien Herder <rhyme label="e" type="m">vry</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Myn gunst <rhyme label="d" type="f" corresp="#s1:l7">veragten</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Myn dunkt van <rhyme label="a" type="f">veeren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Zien ik sijn Schaepjes <rhyme label="b" type="m">staen</rhyme>.</l>
        <l id="s2:l3" met="2" type="-+">Wat mag hem <rhyme label="a" type="f" corresp="#s2:l1">deeren</rhyme>?</l>
        <l id="s2:l4" met="3" type="-+">Myn hert is heel <rhyme label="b" type="m" corresp="#s2:l2">belaen</rhyme>!</l>
        <l id="s2:l5" met="3" type="-+">Ik dryf mijn Vee met <rhyme label="c" type="m">spoet</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Langs een klaer <rhyme label="c" type="m" corresp="#s2:l5">watervloet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Tot ginder aen de <rhyme label="d" type="f">heggen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Daer ik myn <rhyme label="e" type="m">Coridon</rhyme></l>
        <l id="s2:l9" met="2" type="-+">In slaep vond <rhyme label="d" type="f" corresp="#s2:l7">leggen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Ik sal gaen <rhyme label="a" type="f">weiden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Mijn Schaepjes aen de <rhyme label="b" type="m">bron</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Langs de groen <rhyme label="a" type="f" corresp="#s3:l1">heide</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En laten <rhyme label="b" type="m" corresp="#s3:l2">Coridon</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Slapen in rust en <rhyme label="c" type="m">vree</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Nemen sijn Schaepjes <rhyme label="c" type="m" corresp="#s3:l5">mee</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Tot dat ik weer sal <rhyme label="d" type="f">komen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">En sien of hy <rhyme label="e" type="m">ontwaekt</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Aen dese <rhyme label="d" type="f" corresp="#s3:l7">stroomen</rhyme>.’</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">‘O soete <rhyme label="a" type="f">dromen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wat baert gy mijn al <rhyme label="b" type="m">pyn</rhyme>.</l>
        <l id="s4:l3" met="2" type="-+">Ik ben vol <rhyme label="a" type="f" corresp="#s4:l1">schromen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Waer of myn Schaepjens <rhyme label="b" type="m" corresp="#s4:l2">zyn</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Waer is myn <rhyme label="c" type="m">Silvia</rhyme>?</l>
        <l id="s4:l6" met="3" type="-+">Ik sal haer soeken <rhyme label="c" type="m" corresp="#s4:l5">dra</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Of ik haer nog kon <rhyme label="d" type="f">vinden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Hier in het groene <rhyme label="e" type="m">dal</rhyme></l>
        <l id="s4:l9" met="2" type="-+">Onder de <rhyme label="d" type="f" corresp="#s4:l7">Linden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Waer zal ik <rhyme label="a" type="f">doolen</rhyme>?</l>
        <l id="s5:l2" met="3" type="-+">Ik vind myn Schaepjes <rhyme label="b" type="m">niet</rhyme>.</l>
        <l id="s5:l3" met="2" type="-+">Sy zyn <rhyme label="a" type="f" corresp="#s5:l1">gestolen</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Wat leed is myn <rhyme label="b" type="m" corresp="#s5:l2">schiet</rhyme>!</l>
        <l id="s5:l5" met="3" type="-+">Myn Silvia, myn <rhyme label="c" type="m">Bruid</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Is ook te velden <rhyme label="c" type="m" corresp="#s5:l5">uit</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Misschien te saem <rhyme label="d" type="f">verslonden</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Door 't vinnig <rhyme label="e" type="m">ongediert</rhyme>,</l>
        <l id="s5:l9" met="2" type="-+">Als woede <rhyme label="d" type="f" corresp="#s5:l7">honden</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Nu wil ik <rhyme label="a" type="f">sterven</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Ik mis myn Vee en <rhyme label="b" type="m">Bruid</rhyme>.</l>
        <l id="s6:l3" met="2" type="-+">Mijn hert <rhyme label="a" type="f" corresp="#s6:l1">afkerven</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Ik neem een vast <rhyme label="b" type="m" corresp="#s6:l2">besluit</rhyme></l>
        <l id="s6:l5" met="3" type="-+">En wil mijn met het <rhyme label="c" type="m">swaerd</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Hier vellen neer ter <rhyme label="c" type="m" corresp="#s6:l5">aerd</rhyme>.’</l>
        <l id="s6:l7" met="3" type="-+">Hy heeft sijn hert <rhyme label="d" type="f">doorsteken</rhyme>;</l>
        <l id="s6:l8" met="3" type="-+">Onder de <rhyme label="e" type="m">Lindeboom</rhyme></l>
        <l id="s6:l9" met="2" type="-+">Is hy <rhyme label="d" type="f" corresp="#s6:l7">bezweken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">‘Ik wil gaen <rhyme label="a" type="f">keeren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Of Coridon <rhyme label="b" type="m">ontwaekt</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Daer ginder <rhyme label="a" type="f" corresp="#s7:l1">veeren</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">'t Scheint of mijn droefheid <rhyme label="b" type="m" corresp="#s7:l2">naekt</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Eilaes, ik sie de <rhyme label="c" type="m">bron</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">Daer lag mijn <rhyme label="c" type="m" corresp="#s7:l5">Coridon</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Met 't zwaerd nog in zijn <rhyme label="d" type="f">sijde</rhyme>.</l>
        <l id="s7:l8" met="3" type="-+">Moest gy, ô Herder <rhyme label="e" type="m">soet</rhyme>,</l>
        <l id="s7:l9" met="2" type="-+">Om mijn dit <rhyme label="d" type="f" corresp="#s7:l7">lijden</rhyme>?’</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">‘Ik ben <rhyme label="a" type="f">verslonden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">En door de dood <rhyme label="b" type="m">verwond</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Met diepe <rhyme label="a" type="f" corresp="#s8:l1">wonden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Om dat ik u niet <rhyme label="b" type="m" corresp="#s8:l2">vond</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Om u heb ik mijn <rhyme label="c" type="m">bloet</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Gestort uit liefde <rhyme label="c" type="m" corresp="#s8:l5">soet</rhyme>.’</l>
        <l id="s8:l7" met="3" type="-+">Coridon sluit zijn <rhyme label="d" type="f">oogen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Zijn doode mond <rhyme label="e" type="m">beklemt</rhyme>,</l>
        <l id="s8:l9" met="2" type="-+">Zijn hooft <rhyme label="d" type="f" corresp="#s8:l7">geboogen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">‘Myn Herder <rhyme label="a" type="f">trouwe</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Sterft gy de dood voor <rhyme label="b" type="m">myn</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Dat sal myn <rhyme label="a" type="f" corresp="#s9:l1">rouwe</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Ik leef in sware <rhyme label="b" type="m" corresp="#s9:l2">pijn</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Ik wil op staend <rhyme label="c" type="m">voet</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Storten myn laeste <rhyme label="c" type="m" corresp="#s9:l5">bloet</rhyme></l>
        <l id="s9:l7" met="3" type="-+">En als u <rhyme label="d" type="f">Herderinne</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Mee sterven om mijn <rhyme label="e" type="m">lief</rhyme>,</l>
        <l id="s9:l9" met="2" type="-+">Uyt zuiver <rhyme label="d" type="f" corresp="#s9:l7">minne</rhyme>.’</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Zy heeft <rhyme label="a" type="f">genomen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Het zwaerd – wat droeve <rhyme label="b" type="m">smert</rhyme>! –,</l>
        <l id="s10:l3" met="2" type="-+">Heeft het met <rhyme label="a" type="f" corresp="#s10:l1">schromen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Gestoken in haer <rhyme label="b" type="m" corresp="#s10:l2">hert</rhyme></l>
        <l id="s10:l5" met="3" type="-+">En viel, daer by die <rhyme label="c" type="m">bron</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Neder by <rhyme label="c" type="m" corresp="#s10:l5">Coridon</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Onder de Linde <rhyme label="d" type="f">bladen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Alwaer sy alle <rhyme label="e" type="m">bei</rhyme></l>
        <l id="s10:l9" met="2" type="-+">De doodsnik <rhyme label="d" type="f" corresp="#s10:l7">laden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">De schaepjes <rhyme label="a" type="f">dwalen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Alleenig   op het <rhyme label="b" type="m">veld</rhyme></l>
        <l id="s11:l3" met="2" type="-+">Door bos en <rhyme label="a" type="f" corresp="#s11:l1">dalen</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Zy waeren heel <rhyme label="b" type="m" corresp="#s11:l2">ontstelt</rhyme></l>
        <l id="s11:l5" met="3" type="-+">En droevig om de <rhyme label="c" type="m">dood</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Van haer Herder <rhyme label="c" type="m" corresp="#s11:l5">minjoot</rhyme></l>
        <l id="s11:l7" met="3" type="-+">En hare <rhyme label="d" type="f">Herderinne</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Die t' zaem gestorven <rhyme label="e" type="m">zyn</rhyme></l>
        <l id="s11:l9" met="2" type="-+">Uyt zuiver <rhyme label="d" type="f" corresp="#s11:l7">minne</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
