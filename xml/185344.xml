    <melody>Luz de mi alma</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WAt is dit <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Op Aerd <rhyme label="a" type="f" corresp="#s1:l1">gegeven</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Als vegten, <rhyme label="b" type="f">stryen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">En geduerig <rhyme label="b" type="f" corresp="#s1:l3">lyen</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Hier is niet dan <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">O Jesu! Jesu mogt ik by u <rhyme label="c" type="m" corresp="#s1:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Als ik <rhyme label="a" type="f">bedencke</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">’t Geen gy sult <rhyme label="a" type="f" corresp="#s2:l1">schenke</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">U Hemels <rhyme label="b" type="f">Bruyden</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">‘k Wou gy my op <rhyme label="b" type="f" corresp="#s2:l3">huyden</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Schonck u soet <rhyme label="c" type="m">aenschijn</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">O Jesu! Jesu mogt ik by u <rhyme label="c" type="m" corresp="#s2:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">’t Geen is op <rhyme label="a" type="f">Aerde</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Mijn hert <rhyme label="a" type="f" corresp="#s3:l1">bezwaerde</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Soo drae ick <rhyme label="b" type="f">hoorde</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">’t My zeer valsch <rhyme label="b" type="f" corresp="#s3:l3">bekoorde</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Dus op dees <rhyme label="c" type="m">termijn</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Riep, Jesu! Jesu mogt ik by u <rhyme label="c" type="m" corresp="#s3:l5">zijn</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Naer mijn <rhyme label="a" type="f">verlangen</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Spoeyt tog u <rhyme label="a" type="f" corresp="#s4:l1">gangen</rhyme>;</l>
        <l id="s4:l3" met="2" type="-+">En laet dit <rhyme label="b" type="f">queelen</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">U, ô Heer! <rhyme label="b" type="f" corresp="#s4:l3">verveelen</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Weest mijn <rhyme label="c" type="m">Medicijn</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">O Jesu! Jesu mogt ik by u <rhyme label="c" type="m" corresp="#s4:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Wat sou ’k al <rhyme label="a" type="f">b’oogen</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Had ik voor <rhyme label="a" type="f" corresp="#s5:l1">oogen</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Al Syons <rhyme label="b" type="f">vreugden</rhyme>?</l>
        <l id="s5:l4" met="3" type="+-">In al dees <rhyme label="b" type="f" corresp="#s5:l3">geneugden</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Zong uyt liefde <rhyme label="c" type="m">devijn</rhyme>:</l>
        <l id="s5:l6" met="5" type="-+">O Jesu! Jesu mogt ik by u <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
