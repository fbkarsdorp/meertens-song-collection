  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MEt den <rhyme label="a" type="m">dageraet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">De Vrouwen quamen <rhyme label="b" type="f">soeken</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Maer het was te <rhyme label="a" type="m" corresp="#s1:l1">laet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Sy vonden niet dan <rhyme label="b" type="f" corresp="#s1:l2">doeken</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En nogh een Engel <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met klaricheyt <rhyme label="c" type="m" corresp="#s1:l5">ydoon</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Gesonden uyt Goodts <rhyme label="c" type="m" corresp="#s1:l5">Troon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die spreekt soet tot <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En wilt togh geensins <rhyme label="b" type="f">vreesen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Christus is <rhyme label="a" type="m" corresp="#s2:l1">voorwaer</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Al van der doodt <rhyme label="b" type="f" corresp="#s2:l2">verresen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Gaet heen en brenght de <rhyme label="c" type="m">maer</rhyme></l>
        <l id="s2:l6" met="3" type="-+">d' Apostels <rhyme label="c" type="m" corresp="#s2:l5">allegaer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Gelijk ik u <rhyme label="c" type="m" corresp="#s2:l5">verklaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">d' Jongeren <rhyme label="a" type="m">verbaest</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sijn tot het graf <rhyme label="b" type="f">gekoomen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met seer grooten <rhyme label="a" type="m" corresp="#s3:l1">haest</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En hebben 't soo <rhyme label="b" type="f" corresp="#s3:l2">vernoomen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Terwijlen stondt <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Maria <rhyme label="c" type="m" corresp="#s3:l5">Magdaleen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Met jammerlijk <rhyme label="c" type="m" corresp="#s3:l5">geween</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Jesus seyd, <rhyme label="a" type="m">Mary</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Hy leek aen sijn <rhyme label="b" type="f">maniere</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Toen hy haer quam <rhyme label="a" type="m" corresp="#s4:l1">by</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Te sijn een <rhyme label="b" type="f" corresp="#s4:l2">Hoveniere</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">En datelijk seydt <rhyme label="c" type="m">sy</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Met gantscher harten <rhyme label="c" type="m" corresp="#s4:l5">bly</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Tot hem, o <rhyme label="c" type="m" corresp="#s4:l5">Rabbony</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Strax <rhyme label="a" type="m">veropenbaert</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hy hem de Vrouwen <rhyme label="b" type="f">t'samen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die al heel <rhyme label="a" type="m" corresp="#s5:l1">vervaert</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met Magdalena <rhyme label="b" type="f" corresp="#s5:l2">quamen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En hy seydt, weest <rhyme label="c" type="m">gegroet</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Sy vallen hem te <rhyme label="c" type="m" corresp="#s5:l5">voet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En bidden met <rhyme label="c" type="m" corresp="#s5:l5">ootmoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Jesu Soone <rhyme label="a" type="m">Goodts</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Gy sijt voorwaer <rhyme label="b" type="f">verresen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Uyt 't gewelt des <rhyme label="a" type="m" corresp="#s6:l1">doodts</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Gy moet sijn hoogh <rhyme label="b" type="f" corresp="#s6:l2">gepreesen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Den Satan g' hebt <rhyme label="c" type="m">vermaght</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">De Hel hebt gy <rhyme label="c" type="m" corresp="#s6:l5">versmaght</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">De Doodt te niet <rhyme label="c" type="m" corresp="#s6:l5">gebraght</rhyme>.</l>
      </lg>
    </lg>
  </text>
