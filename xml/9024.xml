    <melody>Es ist das Heil uns kommen her</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs myn Stond'lijn voor handen <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">End sal heen vaer'n myn <rhyme label="b" type="f">Strate</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Soo g'leydt ghy my Heer Jesu <rhyme label="a" type="m" corresp="#s1:l1">Christ</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dijn hulp my niet <rhyme label="b" type="f" corresp="#s1:l2">verlaete</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Myn Siel aen mynen laetsten <rhyme label="c" type="m">Eyndt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Beveel ick, HEER, in dijne <rhyme label="c" type="m" corresp="#s1:l5">Handt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ghy sultse my <rhyme label="d" type="f">bewaren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Myn Sond' my sullen quellen <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dijn Wet sal my <rhyme label="b" type="f">verclaghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Al zijn myn Sond' als Zandt aent <rhyme label="a" type="m" corresp="#s2:l1">Meyr</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Noch wil ick niet <rhyme label="b" type="f" corresp="#s2:l2">Vertsaghen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ghedencken wil ick aen dijn <rhyme label="c" type="m">Doot</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">HEER JEsu dijne Wonden <rhyme label="c" type="m" corresp="#s2:l5">Root</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die sullen my <rhyme label="d" type="f">behouden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick ben een Lidt aen dijnen <rhyme label="a" type="m">Lijff</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dies troost ick my van <rhyme label="b" type="f">Herten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Van dy ick Onghescheyden <rhyme label="a" type="m" corresp="#s3:l1">blijff</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">In Doodes Noot end <rhyme label="b" type="f" corresp="#s3:l2">smerten</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Al sterff ick dan, soo sterff ick <rhyme label="c" type="m">dy</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Een Eewich Leven hebt ghy <rhyme label="c" type="m" corresp="#s3:l5">my</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Met dijnen Doot <rhyme label="d" type="f">verworven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want ghy van Doodt Verresen <rhyme label="a" type="m">bist</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sal ick in Dood' niet <rhyme label="b" type="f">blijven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Myn Troost dijn Overwinning' <rhyme label="a" type="m" corresp="#s4:l1">is</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Doots Vrees kanse <rhyme label="b" type="f" corresp="#s4:l2">verdrijven</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Waer ghy (HEER) bendt, daer coem ick <rhyme label="c" type="m">hen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Op dat ick Eewich by dy <rhyme label="c" type="m" corresp="#s4:l5">ben</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dies vaer ick al met <rhyme label="d" type="f">vreuchden</rhyme>.</l>
      </lg>
    </lg>
  </text>
