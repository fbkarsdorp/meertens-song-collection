    <melody>Och ongelukkige dag</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OCh arme wereltsch <rhyme label="a" type="m">Kint</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe komt ghy soo <rhyme label="a" type="m" corresp="#s1:l1">verblint</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat ghy den Rijckdom soo <rhyme label="a" type="m" corresp="#s1:l1">bemint</rhyme>?</l>
        <l id="s1:l4" met="4" type="-+">Wat sal u baten 's werelts <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Wanneer ghy naeckt verhuysen <rhyme label="b" type="m" corresp="#s1:l4">moet</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Nu is uw' hert <rhyme label="a" type="m">gestelt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Soo seer op 't snoode <rhyme label="a" type="m" corresp="#s2:l1">gelt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat ghy 't versamelt met <rhyme label="a" type="m" corresp="#s2:l1">gewelt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Maer moogh'lijck komt een dief by <rhyme label="b" type="m">nacht</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die al uw' schat te stelen <rhyme label="b" type="m" corresp="#s2:l4">tracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Nu zijn uw' Cassen <rhyme label="a" type="m">veel</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Uw' Coff'ren in 't <rhyme label="a" type="m" corresp="#s3:l1">geheel</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Gevult met zijd' en met <rhyme label="a" type="m" corresp="#s3:l1">fluweel</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Maer lichtlijc uw' schoon klederen <rhyme label="b" type="m">al</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Een wormken kleyn bederven <rhyme label="b" type="m" corresp="#s3:l4">sal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Komt sie de Lelien <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die alsoo cierlijck <rhyme label="a" type="m" corresp="#s4:l1">staen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Als Salomon oyt heeft <rhyme label="a" type="m" corresp="#s4:l1">gedaen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Sy winnen of sy spinnen <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Hoe wel ghy haer soo heerlijck <rhyme label="b" type="m" corresp="#s4:l4">siet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een Vogel werdt <rhyme label="a" type="m">gevoet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Van sijnen Schepper <rhyme label="a" type="m" corresp="#s5:l1">goet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hoe wel hy geen provisie <rhyme label="a" type="m" corresp="#s5:l1">doet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En ghy sorght steets met <rhyme label="b" type="m">ongedult</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Wat spijs en drack ghy hebben <rhyme label="b" type="m" corresp="#s5:l4">sult</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En is uw' leven <rhyme label="a" type="m">teer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En't Lichaem niet veel <rhyme label="a" type="m" corresp="#s6:l1">meer</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Als 's levens spijs, en 's lichaems <rhyme label="a" type="m" corresp="#s6:l1">kleer</rhyme>?</l>
        <l id="s6:l4" met="4" type="-+">Betrout op Godt die eeuwich <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Die alle dinck sijn voetsel <rhyme label="b" type="m" corresp="#s6:l4">geeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Na Christi <rhyme label="a" type="m">Coninckrijck</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En niet naer 't blinckend <rhyme label="a" type="m" corresp="#s7:l1">slijck</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Laet ons doch trachten al <rhyme label="a" type="m" corresp="#s7:l1">gelijck</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Het ander sal ons sonder <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Seer mild'lijck toegeworpen <rhyme label="b" type="m" corresp="#s7:l4">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
