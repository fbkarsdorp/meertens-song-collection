    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
    </tags>
    <melody>Ik ging nog gisteravond zo heimelijk een gang</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">T Volck die hun hier <rhyme label="a" type="f">verlaten</rhyme>//</l>
        <l id="s1:l2" met="3" type="-+">op dwase hoop <rhyme label="b" type="m">altijt</rhyme>//</l>
        <l id="s1:l3" met="3" type="-+">Die droom meynen te <rhyme label="a" type="f" corresp="#s1:l1">baten</rhyme>//</l>
        <l id="s1:l4" met="3" type="-+">en sijn daer door <rhyme label="b" type="m" corresp="#s1:l2">verblijt</rhyme>//</l>
        <l id="s1:l5" met="4" type="-+">Dees achten een schaduwe voor <rhyme label="b" type="m" corresp="#s1:l2">profijt</rhyme>//</l>
        <l id="s1:l6" met="3" type="-+">twelck waer schijnt, maer noch wijt <rhyme label="c" type="m">scheelt</rhyme>//</l>
        <l id="s1:l7" met="4" type="+-">droom is een onweeslijck <rhyme label="c" type="m" corresp="#s1:l6">beelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hoe cont onreyn sijn <rhyme label="a" type="f">reyne</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En tvalsche wesen <rhyme label="b" type="m">waer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Tsdrooms propheci' is <rhyme label="a" type="f" corresp="#s2:l1">cleyne</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Cranck ist tbeduyt van <rhyme label="b" type="m" corresp="#s2:l2">haer</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Het droomen maect niet dan ghedachten <rhyme label="b" type="m" corresp="#s2:l2">swaer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Bedrochlijck huer altijt <rhyme label="c" type="m">hout</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Hy doolt seer die daer op <rhyme label="c" type="m" corresp="#s2:l6">bout</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Leughen en is niet <rhyme label="a" type="f">nootlijck</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Al tot des Heeren <rhyme label="b" type="m">wet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Godts woort dat is toch <rhyme label="a" type="f" corresp="#s3:l1">blootlijck</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Volcomen <rhyme label="b" type="m" corresp="#s3:l2">voorgheset</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Wanneer op sijn leere wel wort <rhyme label="b" type="m" corresp="#s3:l2">ghelet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Men heeft daer aen ghenoech <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Wt droom rijst gheen goet <rhyme label="c" type="m" corresp="#s3:l6">bestier</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Een man sijnde <rhyme label="a" type="f">vervaren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Door oeffeningh niet <rhyme label="b" type="m">vertoeft</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hy sal wijsheyt <rhyme label="a" type="f" corresp="#s4:l1">verclaren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Want hy heeft veel <rhyme label="b" type="m" corresp="#s4:l2">beproeft</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Maer die niet veruaren is veel <rhyme label="b" type="m" corresp="#s4:l2">behoeft</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Tvernuft hier nae veel dincx <rhyme label="c" type="m">slaet</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Sulcken gheeft recht op groot <rhyme label="c" type="m" corresp="#s4:l6">quaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Doemen my noch sach <rhyme label="a" type="f">dwalen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Was ick gheleert oock <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ja vanden <rhyme label="a" type="f" corresp="#s5:l1">principalen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Soo was wel mijne <rhyme label="b" type="m" corresp="#s5:l2">leer</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Maer in vaer des doots nam ick mijnen <rhyme label="b" type="m" corresp="#s5:l2">keer</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Mijn dwalen daer door <rhyme label="c" type="m">begost</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Tot dat my Godt heeft <rhyme label="c" type="m" corresp="#s5:l6">verlost</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
