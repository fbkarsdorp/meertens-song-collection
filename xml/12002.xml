  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">HEbt ghy krancke <rhyme label="a" type="f">leden</rhyme>.</l>
        <l id="s1:l2" met="2" type="-+">Wilt u flucx <rhyme label="b" type="f">keeren</rhyme></l>
        <l id="s1:l3" met="2" type="+-">Tot den <rhyme label="b" type="f" corresp="#s1:l2">Heere</rhyme></l>
        <l id="s1:l4" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s1:l2">begeeren</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Hulpe door <rhyme label="a" type="f" corresp="#s1:l1">ghebeden</rhyme>.</l>
        <l id="s1:l6" met="3" type="+-">Want hy die u <rhyme label="c" type="m">slaet</rhyme>,</l>
        <l id="s1:l7" met="2" type="+-">Weet goe <rhyme label="c" type="m" corresp="#s1:l6">raet</rhyme>,</l>
        <l id="s1:l8" met="2" type="+-">Om het <rhyme label="c" type="m" corresp="#s1:l6">quaet</rhyme></l>
        <l id="s1:l9" met="4" type="+-">Dat u ontstelt haest te <rhyme label="a" type="f" corresp="#s1:l1">vertreden</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">En u geven <rhyme label="c" type="m" corresp="#s1:l6">baet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Besight soo <rhyme label="a" type="f">kruyts-krachten</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Dat ghy <rhyme label="b" type="f">ghestadigh</rhyme></l>
        <l id="s2:l3" met="2" type="+-">Godt <rhyme label="b" type="f" corresp="#s2:l2">ghenadigh</rhyme></l>
        <l id="s2:l4" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s2:l2">weldadigh</rhyme></l>
        <l id="s2:l5" met="3" type="+-">Houdt in u <rhyme label="a" type="f" corresp="#s2:l1">ghedachten</rhyme>.</l>
        <l id="s2:l6" met="3" type="+-">Baet een dranck oock <rhyme label="c" type="m">yet</rhyme></l>
        <l id="s2:l7" met="2" type="+-">Als Godt <rhyme label="c" type="m" corresp="#s2:l6">niet</rhyme></l>
        <l id="s2:l8" met="2" type="+-">U <rhyme label="c" type="m" corresp="#s2:l6">verdriet</rhyme></l>
        <l id="s2:l9" met="4" type="+-">Door sijn goetheydt wil <rhyme label="a" type="f" corresp="#s2:l1">versachten</rhyme>;</l>
        <l id="s2:l10" met="3" type="-+">Of u sijn hulp <rhyme label="c" type="m" corresp="#s2:l6">aenbiet</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Wilt door kranckheyt <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s3:l2" met="2" type="-+">De sonden <rhyme label="b" type="f">laten</rhyme></l>
        <l id="s3:l3" met="2" type="+-">En oock <rhyme label="b" type="f" corresp="#s3:l2">haten</rhyme>:</l>
        <l id="s3:l4" met="2" type="+-">Gaet <rhyme label="b" type="f" corresp="#s3:l2">deuchts-straten</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Wilt u Schepper <rhyme label="a" type="f" corresp="#s3:l1">eeren</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Soo sal haest <rhyme label="c" type="m">ellent</rhyme></l>
        <l id="s3:l7" met="2" type="+-">Sijn <rhyme label="c" type="m" corresp="#s3:l6">ghewent</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Jae <rhyme label="c" type="m" corresp="#s3:l6">ghe-ent</rhyme>.</l>
        <l id="s3:l9" met="4" type="+-">Hy sal Gods troost niet <rhyme label="a" type="f" corresp="#s3:l1">ontbeeren</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Die Godt voor hulper <rhyme label="c" type="m" corresp="#s3:l6">kent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Wilt nae die niet <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Die helpt door <rhyme label="b" type="f">spreecken</rhyme>,</l>
        <l id="s4:l3" met="2" type="+-">Of door <rhyme label="b" type="f" corresp="#s4:l2">teecken</rhyme></l>
        <l id="s4:l4" met="2" type="+-">De <rhyme label="b" type="f" corresp="#s4:l2">ghebreecken</rhyme>:</l>
        <l id="s4:l5" met="3" type="+-">Ghy soudt Godt <rhyme label="a" type="f" corresp="#s4:l1">verstooren</rhyme>.</l>
        <l id="s4:l6" met="3" type="+-">Gheen woort (hoe <rhyme label="c" type="m">bedacht</rhyme>)</l>
        <l id="s4:l7" met="2" type="+-">Heeft die <rhyme label="c" type="m" corresp="#s4:l6">kracht</rhyme></l>
        <l id="s4:l8" met="2" type="+-">Of die <rhyme label="c" type="m" corresp="#s4:l6">macht</rhyme></l>
        <l id="s4:l9" met="4" type="+-">Dat het soud' de kranckheyt <rhyme label="a" type="f" corresp="#s4:l1">smooren</rhyme>:</l>
        <l id="s4:l10" met="3" type="-+">Dit kan Godt die 't al <rhyme label="c" type="m" corresp="#s4:l6">wracht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Het zijn Duyvels <rhyme label="a" type="f">vonden</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Om ons <rhyme label="b" type="f">gheloove</rhyme></l>
        <l id="s5:l3" met="2" type="+-">Te <rhyme label="b" type="f" corresp="#s5:l2">verdooven</rhyme>,</l>
        <l id="s5:l4" met="2" type="+-">Dat van <rhyme label="b" type="f" corresp="#s5:l2">boven</rhyme></l>
        <l id="s5:l5" met="3" type="+-">Godt ons heeft <rhyme label="a" type="f" corresp="#s5:l1">ghesonden</rhyme>.</l>
        <l id="s5:l6" met="3" type="+-">Die Slangh vroegh en <rhyme label="c" type="m">laet</rhyme></l>
        <l id="s5:l7" met="2" type="+-">Daer nae <rhyme label="c" type="m" corresp="#s5:l6">staet</rhyme>,</l>
        <l id="s5:l8" met="2" type="+-">Dat gh' in 't <rhyme label="c" type="m" corresp="#s5:l6">quaet</rhyme></l>
        <l id="s5:l9" met="4" type="+-">Veer van Godt mooght zijn <rhyme label="a" type="f" corresp="#s5:l1">ghevonden</rhyme>.</l>
        <l id="s5:l10" met="3" type="-+">Mijdt dan sulcks helsch <rhyme label="c" type="m" corresp="#s5:l6">verraet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">'t Woort is niet <rhyme label="a" type="f">ghegheven</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Tot <rhyme label="b" type="f">Medicijne</rhyme>,</l>
        <l id="s6:l3" met="2" type="+-">Om 's lijfs <rhyme label="b" type="f" corresp="#s6:l2">pijne</rhyme></l>
        <l id="s6:l4" met="2" type="+-">Te <rhyme label="b" type="f" corresp="#s6:l2">verdwijnen</rhyme>;</l>
        <l id="s6:l5" met="3" type="+-">Maer om vroom te <rhyme label="a" type="f" corresp="#s6:l1">leven</rhyme>.</l>
        <l id="s6:l6" met="3" type="+-">Door het woort <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s6:l7" met="2" type="+-">Heeft Godt <rhyme label="c" type="m" corresp="#s6:l6">gheen</rhyme></l>
        <l id="s6:l8" met="2" type="+-">Krancke <rhyme label="c" type="m" corresp="#s6:l6">leen</rhyme></l>
        <l id="s6:l9" met="4" type="+-">Frisch ghemaeckt: maer oock <rhyme label="a" type="f" corresp="#s6:l1">beneven</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Was Gods macht by sijn <rhyme label="c" type="m" corresp="#s6:l6">reen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Stelt ghy gheen <rhyme label="a" type="f">vertrouwen</rhyme></l>
        <l id="s7:l2" met="2" type="-+">In kruys of <rhyme label="b" type="f">talen</rhyme>,</l>
        <l id="s7:l3" met="2" type="+-">('t Sal niet <rhyme label="b" type="f" corresp="#s7:l2">dwalen</rhyme>)</l>
        <l id="s7:l4" met="2" type="+-">Uwe <rhyme label="b" type="f" corresp="#s7:l2">qualen</rhyme></l>
        <l id="s7:l5" met="3" type="+-">Sult ghy noch <rhyme label="a" type="f" corresp="#s7:l1">behouwen</rhyme>.</l>
        <l id="s7:l6" met="3" type="+-">Christen, dit <rhyme label="c" type="m">vermijt</rhyme>:</l>
        <l id="s7:l7" met="2" type="+-">Bidt en <rhyme label="c" type="m" corresp="#s7:l6">lijdt</rhyme>.</l>
        <l id="s7:l8" met="2" type="+-">Godt in <rhyme label="c" type="m" corresp="#s7:l6">tijt</rhyme></l>
        <l id="s7:l9" met="4" type="+-">Sal u doen sijn gunst <rhyme label="a" type="f" corresp="#s7:l1">aenschouwen</rhyme></l>
        <l id="s7:l10" met="3" type="-+">En sonden schelden <rhyme label="c" type="m" corresp="#s7:l6">quijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
