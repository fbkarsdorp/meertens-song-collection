  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Onlanghs en wasser niet verre van <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s1:l2" met="4" type="-+">een jongh barbier ghenaemt <rhyme label="a" type="m" corresp="#s1:l1">passchier</rhyme></l>
        <l id="s1:l3" met="4" type="-+">die synen rugh in een <rhyme label="b" type="m">conduijt</rhyme></l>
        <l id="s1:l4" met="4" type="-+">gingh snutten uut sonder <rhyme label="b" type="m" corresp="#s1:l3">gheluijt</rhyme></l>
        <l id="s1:l5" met="4" type="-+">en juijst den winckel op dat <rhyme label="c" type="m">pas</rhyme></l>
        <l id="s1:l6" met="2" type="-+">vol gasten <rhyme label="c" type="m" corresp="#s1:l5">was</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">So saen hy in den winckel <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s2:l2" met="4" type="-+">passchier die nam scheer ende <rhyme label="a" type="m" corresp="#s2:l1">kam</rhyme></l>
        <l id="s2:l3" met="4" type="-+">en met dat hij hem scheiren <rhyme label="b" type="m">sou</rhyme></l>
        <l id="s2:l4" met="4" type="-+">so vloogh syn mauw rondom seer <rhyme label="b" type="m" corresp="#s2:l3">gauw</rhyme></l>
        <l id="s2:l5" met="4" type="-+">en swierde klaes met desen <rhyme label="c" type="m">drol</rhyme></l>
        <l id="s2:l6" met="2" type="-+">syn aensicht <rhyme label="c" type="m" corresp="#s2:l5">vol</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een Jder borst schier van <rhyme label="a" type="m">ghelach</rhyme></l>
        <l id="s3:l2" met="4" type="-+">die op dien dagh dit spel <rhyme label="a" type="m" corresp="#s3:l1">aen-sagh</rhyme></l>
        <l id="s3:l3" met="4" type="-+">passchier die droop ghelyck een <rhyme label="b" type="m">muijs</rhyme></l>
        <l id="s3:l4" met="4" type="-+">geheel confuijs al stil in <rhyme label="b" type="m" corresp="#s3:l3">huijs</rhyme></l>
        <l id="s3:l5" met="4" type="-+">en wenschte sich ken weet niet <rhyme label="c" type="m">waer</rhyme></l>
        <l id="s3:l6" met="2" type="-+">een mijl van <rhyme label="c" type="m" corresp="#s3:l5">daer</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Terwil den Jonghen met rappen <rhyme label="a" type="m">spoet</rhyme></l>
        <l id="s4:l2" met="4" type="-+">syn broeck ontdoet en sich wat <rhyme label="a" type="m" corresp="#s4:l1">spoet</rhyme></l>
        <l id="s4:l3" met="4" type="-+">so hingh syn mauw buijten sijn <rhyme label="b" type="m">weet</rhyme></l>
        <l id="s4:l4" met="4" type="-+">juijst int secreet die hy <rhyme label="b" type="m" corresp="#s4:l3">bescheet</rhyme></l>
        <l id="s4:l5" met="4" type="-+">en liep beseghelt met dit <rhyme label="c" type="m">draf</rhyme></l>
        <l id="s4:l6" met="2" type="-+">de trappen <rhyme label="c" type="m" corresp="#s4:l5">af</rhyme></l>
      </lg>
    </lg>
