<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184245</id>
    <date>
      <year-start>1798</year-start>
      <year-end>1798</year-end>
    </date>
    <tags/>
    <melody>Laatstmaal toen ik in het meiseizoen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wat is het Boeren Leven <rhyme label="a" type="m">zoet</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Hoe bly op 't stille <rhyme label="b" type="m">Land</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Of schoon hy altoos werken <rhyme label="a" type="m" corresp="#s1:l1">moet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">'t Zy dat hy poot of <rhyme label="b" type="m" corresp="#s1:l2">plaat'</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Of hooit of koren <rhyme label="c" type="m">zaait</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Of ploeg', of egg', of <rhyme label="c" type="m" corresp="#s1:l5">maait</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Of 't nuttig Vee ter Weiden <rhyme label="d" type="m">jaagt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Daar hy zyn roem op dr... <rhyme label="d" type="m" corresp="#s1:l7">aagt</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">Daar hy zyn noem op <rhyme label="d" type="m" corresp="#s1:l7">draagt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">In al dit werk toont hy zyn <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van 's morgens, als de <rhyme label="b" type="m">dag</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Eerst aanbreekt, en zyn oog <rhyme label="a" type="m" corresp="#s2:l1">verheugt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Eer men nog 't Zonlicht <rhyme label="b" type="m" corresp="#s2:l2">zag</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Tot dat het niet meer <rhyme label="c" type="m">straalt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En aan de Westkim <rhyme label="c" type="m" corresp="#s2:l5">daak</rhyme>;</l>
        <l id="s2:l7" met="4" type="-+">Dan geeft een korte slaap hem <rhyme label="d" type="m">rust</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En 's morgens nieuwen <rhyme label="d" type="m" corresp="#s2:l7">lu...st</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">En 's morgens nieuwen <rhyme label="d" type="m" corresp="#s2:l7">lust</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Heeft hy zyn Schuuren <rhyme label="a" type="m">volgelaên</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Als de Oogst gezegend <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dan ziet hy zynen wensch <rhyme label="a" type="m" corresp="#s3:l1">voldaan</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Met blyde <rhyme label="b" type="m" corresp="#s3:l2">erkentenis</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Gulbartig, zonder <rhyme label="c" type="m">kunst</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Looft hy des Hemels <rhyme label="c" type="m" corresp="#s3:l5">gunst</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Die hem bedeeld met <rhyme label="d" type="m">overvloed</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Bevrydt voor <rhyme label="d" type="m" corresp="#s3:l7">tegenspoe...d</rhyme>.</l>
        <l id="s3:l9" met="3" type="-+">Bevrydt voor <rhyme label="d" type="m" corresp="#s3:l7">tegenspoed</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Of 't Zomer, dan of 't Winter <rhyme label="a" type="m">zy</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hy vindt zyn Werk <rhyme label="b" type="m">altyd</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En weet in ieder <rhyme label="a" type="m" corresp="#s4:l1">Jaargety</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hoe hy zyn dagen <rhyme label="b" type="m" corresp="#s4:l2">slyt</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Geen zorg die hem <rhyme label="c" type="m">bezwaart</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Hy stookt zyn eigen <rhyme label="c" type="m" corresp="#s4:l5">Haard</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">En praat met Huisgezin of <rhyme label="d" type="m">Buur</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Des Winters by het <rhyme label="d" type="m" corresp="#s4:l7">vu...ur</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Des Winters by het <rhyme label="d" type="m" corresp="#s4:l7">vuur</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Zo leeft de Boer op 't Land en <rhyme label="a" type="m">weet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van komer noch <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hy werkt, hy ploegt, hy zwoegt, <rhyme label="a" type="m" corresp="#s5:l1">zweet</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Maar kent de kwelling <rhyme label="b" type="m" corresp="#s5:l2">niet</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Van een ontrust <rhyme label="c" type="m">gemoed</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat Staat of Winzucht <rhyme label="c" type="m" corresp="#s5:l5">voedt</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Of onder 't Juk der Armoê <rhyme label="d" type="m">zwoegt</rhyme>.</l>
        <l id="s5:l8" met="3" type="-+">De Boer leeft best <rhyme label="d" type="m" corresp="#s5:l7">ver...noegt</rhyme>.</l>
        <l id="s5:l9" met="3" type="-+">De Boer leeft best <rhyme label="d" type="m" corresp="#s5:l7">vernoegd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
