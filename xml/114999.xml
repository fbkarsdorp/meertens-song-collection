  <author>Guilielmus Bolognino</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HOe schoon zijdy, soetsten <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s1:l2" met="5" type="-+">Mijn eenich goedt, die ick met alle <rhyme label="b" type="f">sinnen</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Altijdt sal <rhyme label="b" type="f" corresp="#s1:l2">beminnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Naer u staet mijn hert soo <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l5" met="6" type="-+">Ah wanneer sal ick u, sal ick u <rhyme label="b" type="f" corresp="#s1:l2">ghewinnen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ghy zijt alle u mijn <rhyme label="a" type="m">vermaeck</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">En mijnen troost, de schoonheydt van u <rhyme label="b" type="f">wanghen</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Houdt mijn hert <rhyme label="b" type="f" corresp="#s2:l2">ghevanghen</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Dat daerom met groot <rhyme label="a" type="m" corresp="#s2:l1">ghehaeck</rhyme></l>
        <l id="s2:l5" met="6" type="-+">t'Allen tijdt blijft naer u, blijft naer u <rhyme label="b" type="f" corresp="#s2:l2">verlanghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Het is my een groot <rhyme label="a" type="m">jolijt</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Nacht ende dagh u in den sin te <rhyme label="b" type="f">houwen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Altijt te <rhyme label="b" type="f" corresp="#s3:l2">beschouwen</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Wanneer sal ick heel <rhyme label="a" type="m" corresp="#s3:l1">verblijdt</rhyme></l>
        <l id="s3:l5" met="6" type="-+">Daer boven eeuwich u, eeuwich u eens <rhyme label="b" type="f" corresp="#s3:l2">trouwen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Daer u schoonheydts claer <rhyme label="a" type="m">ghesicht</rhyme></l>
        <l id="s4:l2" met="5" type="-+">Uyt 't salich hert doet allen droefheydt <rhyme label="b" type="f">vluchten</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Vult dat met <rhyme label="b" type="f" corresp="#s4:l2">ghenuchten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Comt doch, comt gheluckich <rhyme label="a" type="m" corresp="#s4:l1">licht</rhyme>,</l>
        <l id="s4:l5" met="6" type="-+">Mijn hert dat baren sult, baren sult die <rhyme label="b" type="f" corresp="#s4:l2">vruchten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als ghy doen verschynen <rhyme label="a" type="m">my</rhyme></l>
        <l id="s5:l2" met="5" type="-+">Het aenschijn sult, dat eeuwich sal <rhyme label="b" type="f">vermaecken</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Allen vreught doen <rhyme label="b" type="f" corresp="#s5:l2">smaecken</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Maecken my van suchten <rhyme label="a" type="m" corresp="#s5:l1">vry</rhyme>,</l>
        <l id="s5:l5" met="6" type="-+">Naer Godt die t'allen tijdt, t'allen tijt blijf <rhyme label="b" type="f" corresp="#s5:l2">haecken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ah wanneer sal dit eens <rhyme label="a" type="m">zijn</rhyme>?</l>
        <l id="s6:l2" met="5" type="-+">Wanneer sult ghy, o afgrondt aller <rhyme label="b" type="f">goeden</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">In mijn hert eens <rhyme label="b" type="f" corresp="#s6:l2">vloeden</rhyme>?</l>
        <l id="s6:l4" met="4" type="+-">Die u derven moet in <rhyme label="a" type="m" corresp="#s6:l1">pijn</rhyme>,</l>
        <l id="s6:l5" met="6" type="-+">Wanner sal u gheniet, u gheniet my <rhyme label="b" type="f" corresp="#s6:l2">voeden</rhyme>?</l>
      </lg>
    </lg>
  </text>
</song>
