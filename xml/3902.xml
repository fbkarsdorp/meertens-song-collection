  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEer Iesus en sijn <rhyme label="a" type="f">beminde</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die dragens wel ouer <rhyme label="b" type="m">een</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Sy moet der sinnen <rhyme label="c" type="f">steruen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ende latent al / om <rhyme label="b" type="m" corresp="#s1:l2">een</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Och siele / och edel <rhyme label="a" type="f">siele</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wel lieue <rhyme label="b" type="m">dochterkijn</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Keert u van buyten <rhyme label="c" type="f">inne</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die vruecht is al in <rhyme label="b" type="m" corresp="#s2:l2">mi</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe mocht ic dat <rhyme label="a" type="f">gheleeren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ick ben so <rhyme label="b" type="m">onbereet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ende onghestelt van <rhyme label="c" type="f">binnen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Te doen dat God <rhyme label="b" type="m" corresp="#s3:l2">begheert</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghi sult mi wel <rhyme label="a" type="f">betrouwen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ghi en dorst v niet <rhyme label="b" type="m">ontsien</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ghi sult mi so hoghe <rhyme label="c" type="f">bescouwen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wildy die dinghen <rhyme label="b" type="m" corresp="#s4:l2">vlien</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die siele die was seer <rhyme label="a" type="f">wise</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sy dachte in haren <rhyme label="b" type="m">gront</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Ick wil vertiden mi <rhyme label="c" type="f">selue</rhyme></l>
        <l id="s5:l4" met="3" type="-+">So wort mi de waerheyt <rhyme label="b" type="m" corresp="#s5:l2">cont</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doen wert bedruct <rhyme label="a" type="f">nature</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Ende sprac / wat is benomen <rhyme label="b" type="m">my</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Het ghene dat minen sin wel <rhyme label="c" type="f">beual</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Hoe salt ghelaten <rhyme label="b" type="m" corresp="#s6:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die gheest sprac <rhyme label="a" type="f">natuerken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Merct wat is ghespruyt in <rhyme label="b" type="m">di</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Een boom met quade <rhyme label="c" type="f">vruchten</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Doet wt dat <rhyme label="b" type="m" corresp="#s7:l2">wortelkijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ick heb v trouwe <rhyme label="a" type="f">belouet</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Bouen alle die ick <rhyme label="b" type="m">weet</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Ay heere sijt mijns <rhyme label="c" type="f">ghenadich</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Al ben ick <rhyme label="b" type="m" corresp="#s8:l2">onbereet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hebdy mi veel <rhyme label="a" type="f">belouet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Met wercken qualijc <rhyme label="b" type="m">volbracht</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Dat sal ten wtersten <rhyme label="c" type="f">daghe</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Hooghelijck sijn <rhyme label="b" type="m" corresp="#s9:l2">gheacht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Maer wilt ghi v <rhyme label="a" type="f">bekeeren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Noch wil ick v <rhyme label="b" type="m">ontfaen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">In alsoe groter <rhyme label="c" type="f">minnen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Oft ghi noyt en hadt <rhyme label="b" type="m" corresp="#s10:l2">misdaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
