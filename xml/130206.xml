  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">‘Aerdsche <rhyme label="a" type="f">Godinne</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Aengename brave <rhyme label="b" type="m">Maagt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Doel van mijn verliefde <rhyme label="a" type="f" corresp="#s1:l1">Sinnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die mijn teere Ziel <rhyme label="b" type="m" corresp="#s1:l2">behaagt</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Seg eens, wie bekoort gy <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Die uw schoonheid maer <rhyme label="c" type="m" corresp="#s1:l5">aenziet</rhyme>?</l>
        <l id="s1:l7" met="4" type="+-">Seeker, 'k moet u eeuwig <rhyme label="a" type="f" corresp="#s1:l1">minnen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Schoon 't u strafheid   mijn <rhyme label="c" type="m" corresp="#s1:l5">verbiedt</rhyme>.’</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">‘Ey, ey, loop <rhyme label="a" type="f">henen</rhyme>!</l>
        <l id="s2:l2" met="4" type="+-">'k Heb in 't minste geen <rhyme label="b" type="m">vermaak</rhyme></l>
        <l id="s2:l3" met="4" type="+-">In uw woorden zonder <rhyme label="a" type="f" corresp="#s2:l1">meenen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">En uw praatjes voor de <rhyme label="b" type="m" corresp="#s2:l2">vaak</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Vryers, vryers, in der <rhyme label="c" type="m">daat</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Want het uytterlijk <rhyme label="c" type="m" corresp="#s2:l5">gelaat</rhyme></l>
        <l id="s2:l7" met="4" type="+-">- Suchten, steenen, klagen, <rhyme label="a" type="f" corresp="#s2:l1">weenen</rhyme> -</l>
        <l id="s2:l8" met="4" type="+-">Haer niet eens ter herten <rhyme label="c" type="m" corresp="#s2:l5">gaet</rhyme>.’</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">‘Soud gy <rhyme label="a" type="f">geloven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Dat ik door ontrouwe <rhyme label="b" type="m">Min</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Soek uw teere hert te <rhyme label="a" type="f" corresp="#s3:l1">rooven</rhyme>?</l>
        <l id="s3:l4" met="4" type="+-">Neen, mijn schoonste <rhyme label="b" type="m" corresp="#s3:l2">Engelin</rhyme>!</l>
        <l id="s3:l5" met="4" type="+-">Proef, ag Lief, ag, proef my <rhyme label="c" type="m">maer</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Schoon dat liep mijn lyf <rhyme label="c" type="m" corresp="#s3:l5">gevaar</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Nimmer sal dat vier <rhyme label="a" type="f" corresp="#s3:l1">verdoven</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Al was lijden nog zo <rhyme label="c" type="m" corresp="#s3:l5">zwaer</rhyme>.’</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">‘Tussen het <rhyme label="a" type="f">zeggen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">En het doen is <rhyme label="b" type="m">onderscheyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Even als de bergen <rhyme label="a" type="f" corresp="#s4:l1">leggen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Tussen 't Zuyd en Noord <rhyme label="b" type="m" corresp="#s4:l2">verspreyt</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Als den Vogel-vanger <rhyme label="c" type="m">zet</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Het arglistig <rhyme label="c" type="m" corresp="#s4:l5">Garen-net</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Schuylt hy achter heg en <rhyme label="a" type="f" corresp="#s4:l1">struyken</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Tot het Beesjen is in 't <rhyme label="c" type="m" corresp="#s4:l5">Net</rhyme>.’</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="+-">‘Eer sal den <rhyme label="a" type="f">Hemel</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Plett'ren Zaat en Land en <rhyme label="b" type="m">Volk</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Eer sal 't cierlyk <rhyme label="a" type="f" corresp="#s5:l1">Pluym-gewemel</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Nestelen in een dorre <rhyme label="b" type="m" corresp="#s5:l2">kolk</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Eer een logge Walvis <rhyme label="c" type="m">vloog</rhyme>:</l>
        <l id="s5:l6" met="4" type="+-">Eer ik u, mijn Lief, <rhyme label="c" type="m" corresp="#s5:l5">bedroog</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Sal den aldergrootsten <rhyme label="a" type="f" corresp="#s5:l1">Kemel</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Gaen door 't kleinste Naalden <rhyme label="c" type="m" corresp="#s5:l5">oog</rhyme>’,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="+-">‘Hoe zwaarder <rhyme label="a" type="f">eeden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Hoe veel lichter van <rhyme label="b" type="m">waardy</rhyme>!</l>
        <l id="s6:l3" met="4" type="+-">Zet die leuren   en <rhyme label="a" type="f" corresp="#s6:l1">gebeden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Met dit zweeren aen een <rhyme label="b" type="m" corresp="#s6:l2">zy</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Vryers, met u eeden <rhyme label="c" type="m">loop</rhyme>!</l>
        <l id="s6:l6" met="4" type="+-">Eeden die zijn heel goet <rhyme label="c" type="m" corresp="#s6:l5">koop</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Wilt die aen geen Maagt <rhyme label="a" type="f" corresp="#s6:l1">besteden</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Duysent hebjer op een <rhyme label="c" type="m" corresp="#s6:l5">hoop</rhyme>.’</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="+-">‘Moet ik dan <rhyme label="a" type="f">dragen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Smaatheid,   straf, of and're <rhyme label="b" type="m">schult</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Of hebt gy alleen <rhyme label="a" type="f" corresp="#s7:l1">behagen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">In den toets van mijn <rhyme label="b" type="m" corresp="#s7:l2">gedult</rhyme>?</l>
        <l id="s7:l5" met="4" type="+-">Wel, ik sal langmoedig <rhyme label="c" type="m">zijn</rhyme>.</l>
        <l id="s7:l6" met="4" type="+-">'k Hoop dat nog u <rhyme label="c" type="m" corresp="#s7:l5">Sonne-schyn</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Eyndelijk eens op mijn sal <rhyme label="a" type="f" corresp="#s7:l1">dagen</rhyme>:</l>
        <l id="s7:l8" met="4" type="+-">Hoop van gunst en voelt geen <rhyme label="c" type="m" corresp="#s7:l5">pijn</rhyme>.’</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="+-">‘Gy draagt geen <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Smaatheyt, schult, of and're <rhyme label="b" type="m">straf</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">Ben ik vier, soo wilt my <rhyme label="a" type="f" corresp="#s8:l1">mijden</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Brand ik u, gaat van my <rhyme label="b" type="m" corresp="#s8:l2">af</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Want of ik u schoon <rhyme label="c" type="m">getrouw</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Ik u eynd'lijk dan nog <rhyme label="c" type="m" corresp="#s8:l5">sou</rhyme></l>
        <l id="s8:l7" met="4" type="+-">Als een gladden draat <rhyme label="a" type="f" corresp="#s8:l1">afsnyden</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Want ik heb geen sin in <rhyme label="c" type="m" corresp="#s8:l5">jou</rhyme>.’</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="+-">‘ 'k Kan 't niet <rhyme label="a" type="f">verkroppen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">'t Hert en Ziel leit my en <rhyme label="b" type="m">beeft</rhyme>.</l>
        <l id="s9:l3" met="4" type="+-">Voelt eens hoe mijn ad'ren <rhyme label="a" type="f" corresp="#s9:l1">kloppen</rhyme>!</l>
        <l id="s9:l4" met="4" type="+-">Ag, mijn Asem my <rhyme label="b" type="m" corresp="#s9:l2">begeeft</rhyme>!</l>
        <l id="s9:l5" met="4" type="+-">Ag, ag, ag, dat zijn geen <rhyme label="c" type="m">reen</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Dat gy altyd roep van <rhyme label="c" type="m" corresp="#s9:l5">neen</rhyme>.</l>
        <l id="s9:l7" met="4" type="+-">Selfs een Key door 't <rhyme label="a" type="f" corresp="#s9:l1">droppen</rhyme>.</l>
        <l id="s9:l8" met="4" type="+-">Zijt gy harder dan een <rhyme label="c" type="m" corresp="#s9:l5">Steen</rhyme>?’</l>
      </lg>
    </lg>
  </text>
