  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GOd sy gedanct O suster <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat Godt Vader <rhyme label="a" type="m" corresp="#s1:l1">devijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Oock heeft vercooren <rhyme label="a" type="m" corresp="#s1:l1">dijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Om een van zijn schapen te <rhyme label="b" type="f">zijne</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Och wilt hem naer volgende <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En vreest druck nochte <rhyme label="a" type="m" corresp="#s1:l1">pijn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Op dat ghy meucht seer <rhyme label="a" type="m" corresp="#s1:l1">fijn</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Hier naemaels ontvlieden de <rhyme label="b" type="f" corresp="#s1:l4">pijne</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Want daer compt hoort mijn <rhyme label="c" type="m">gewach</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Eenen wreeden fellen <rhyme label="c" type="m" corresp="#s1:l9">dach</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Den welcken <rhyme label="d" type="f">verheven</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">Is van Safonya <rhyme label="d" type="f" corresp="#s1:l11">beschreven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Desen dach sal zijn soo <rhyme label="a" type="m">wreet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Als eenen Oven <rhyme label="a" type="m" corresp="#s2:l1">heet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Verstaet wel dit <rhyme label="a" type="m" corresp="#s2:l1">bescheet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Och wilt hem ontvliedende <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Op dat het u niet en wort <rhyme label="a" type="m" corresp="#s2:l1">leet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Maer dat ghy staet <rhyme label="a" type="m" corresp="#s2:l1">bereet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Om t'ontfanghen het <rhyme label="a" type="m" corresp="#s2:l1">cleet</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Dat Christum sal geven <rhyme label="b" type="f" corresp="#s2:l4">ghepresen</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Ist dat wy hier vroom <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Ende hem niet af en <rhyme label="c" type="m" corresp="#s2:l9">gaen</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Wy sullent al <rhyme label="d" type="f">besitten</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">Dat cleet ontfangen sonder <rhyme label="d" type="f" corresp="#s2:l11">smitten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Begheert ghy nu seer <rhyme label="a" type="m">excellent</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Te besitten <rhyme label="a" type="m" corresp="#s3:l1">present</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat eeuwich rijck <rhyme label="a" type="m" corresp="#s3:l1">ient</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Soo maect dat u Lampe blijft <rhyme label="b" type="f">branden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Op dat ghy niet met groot <rhyme label="a" type="m" corresp="#s3:l1">elent</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En compt in sware <rhyme label="a" type="m" corresp="#s3:l1">torment</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Als die dwase Maechden <rhyme label="a" type="m" corresp="#s3:l1">blent</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Die daer sliepen als <rhyme label="b" type="f" corresp="#s3:l4">d'onverstanden</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Tot in der <rhyme label="c" type="m">middernacht</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">V neerstich daer van <rhyme label="c" type="m" corresp="#s3:l9">wacht</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Dat ghy vry sonder <rhyme label="d" type="f">mincken</rhyme>,</l>
        <l id="s3:l12" met="4" type="-+">Meucht als de sonne altijt <rhyme label="d" type="f" corresp="#s3:l11">blincken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Blincken als die Sonne <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sullen wy alle <rhyme label="a" type="m" corresp="#s4:l1">gaer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">By Godt ons hemels <rhyme label="a" type="m" corresp="#s4:l1">Vaer</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ist dat wy hier vromelick <rhyme label="b" type="f">strijden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ist dat wy Christum volgen <rhyme label="a" type="m" corresp="#s4:l1">naer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In druck en lyden <rhyme label="a" type="m" corresp="#s4:l1">swaer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ja totter doot <rhyme label="a" type="m" corresp="#s4:l1">voorwaer</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Wy sullen namaels wel <rhyme label="b" type="f" corresp="#s4:l4">verblyden</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Ende worden <rhyme label="c" type="m">gheloont</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Van den Jongelinck <rhyme label="c" type="m" corresp="#s4:l9">gecroont</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Op Syons berch <rhyme label="d" type="f">presentich</rhyme>,</l>
        <l id="s4:l12" met="4" type="-+">Soo Esdras beschrijft <rhyme label="d" type="f" corresp="#s4:l11">coragentich</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Noch beschrijft Esdras met <rhyme label="a" type="m">spoet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Van een Stadt vol van <rhyme label="a" type="m" corresp="#s5:l1">goet</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Die den Engel hem wees <rhyme label="a" type="m" corresp="#s5:l1">soet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Wilt daer naer wandelen <rhyme label="b" type="f">publijcken</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Den wech is smal als een <rhyme label="a" type="m" corresp="#s5:l1">voet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die ghy betreden <rhyme label="a" type="m" corresp="#s5:l1">moet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Maer ghy en meucht zijt dit <rhyme label="a" type="m" corresp="#s5:l1">vroet</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Als Loths huysvrauwe niet <rhyme label="b" type="f" corresp="#s5:l4">omkijcken</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Noch als den Jonghen <rhyme label="c" type="m">exproot</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Die Christus woorden <rhyme label="c" type="m" corresp="#s5:l9">verdroot</rhyme>,</l>
        <l id="s5:l11" met="3" type="+-">Dat hy om zijn <rhyme label="d" type="f">ontfarmen</rhyme>,</l>
        <l id="s5:l12" met="4" type="-+">Sijn goet soude gheven den <rhyme label="d" type="f" corresp="#s5:l11">armen</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hebt den man Gods voor ooghen <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die Propheteerde met <rhyme label="a" type="m" corresp="#s6:l1">vliet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Te Bethel vaet mijn <rhyme label="a" type="m" corresp="#s6:l1">bediet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Teghen den altaer naert <rhyme label="b" type="f">vermonden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Maer hem naeckt' groot <rhyme label="a" type="m" corresp="#s6:l1">verdriet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Want hy godts woort <rhyme label="a" type="m" corresp="#s6:l1">verliet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ende niet en hielt het <rhyme label="a" type="m" corresp="#s6:l1">bevel</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Hy wert ghedoot naer schrijfs <rhyme label="b" type="f" corresp="#s6:l4">oorconden</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Al van een leeuwe <rhyme label="c" type="m">hoort</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Op den Wech naer s Heeren <rhyme label="c" type="m" corresp="#s6:l9">Woort</rhyme>,</l>
        <l id="s6:l11" met="3" type="+-">Och wilt dit wel <rhyme label="d" type="f">bedincken</rhyme>,</l>
        <l id="s6:l12" met="4" type="-+">Dat ghy recht deure gaet sonder <rhyme label="d" type="f" corresp="#s6:l11">hincken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Neempt een exempel aen Saul <rhyme label="a" type="m">bloot</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die cleene was <rhyme label="a" type="m" corresp="#s7:l1">devoot</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">In sijn ooghen <rhyme label="a" type="m" corresp="#s7:l1">miniot</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Daerom hadde godt hem <rhyme label="b" type="f">vercooren</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Maer als hy soude gaen slaen <rhyme label="a" type="m" corresp="#s7:l1">doot</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Die Amalecyten <rhyme label="a" type="m" corresp="#s7:l1">snoot</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Hy verliet het bevel <rhyme label="a" type="m" corresp="#s7:l1">groot</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Op hem soo quam des heeren <rhyme label="b" type="f" corresp="#s7:l4">tooren</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">En nam het tijcke van hem <rhyme label="c" type="m">vry</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Gaft een die beter was dan <rhyme label="c" type="m" corresp="#s7:l9">hy</rhyme>,</l>
        <l id="s7:l11" met="3" type="+-">t Welck was Davidt seer <rhyme label="d" type="f">coene</rhyme>,</l>
        <l id="s7:l12" met="4" type="-+">Die soude al zijnnen wille <rhyme label="d" type="f" corresp="#s7:l11">doene</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Oorlof Ick ben soo <rhyme label="a" type="m">teer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Bidt voor my godt den <rhyme label="a" type="m" corresp="#s8:l1">heer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat hy my stercken <rhyme label="a" type="m" corresp="#s8:l1">meer</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">In zijn waerheyt niet om door <rhyme label="b" type="f">gronden</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Op dat Ick mach tot elcken <rhyme label="a" type="m" corresp="#s8:l1">keer</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Op wassen in zijn <rhyme label="a" type="m" corresp="#s8:l1">leer</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Dat Is wel mijn <rhyme label="a" type="m" corresp="#s8:l1">begeer</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">An u mijn suster t allen <rhyme label="b" type="f" corresp="#s8:l4">stonden</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Oorloof hier mee een <rhyme label="c" type="m">slot</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Oorlof ick beveel u <rhyme label="c" type="m" corresp="#s8:l9">God</rhyme>,</l>
        <l id="s8:l11" met="3" type="+-">Dat hy u wijl <rhyme label="d" type="f">gheleyden</rhyme>,</l>
        <l id="s8:l12" met="4" type="-+">Altijt in sijn oprechte <rhyme label="d" type="f" corresp="#s8:l11">weyden</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>
