  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Schoone Bruydt sonder <rhyme label="a" type="f">vermijden</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Wilt <rhyme label="a" type="f" corresp="#s1:l1">verblijden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Compt en siet dees <rhyme label="b" type="m">wonderheydt</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Eenen Mey ter deser <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Is <rhyme label="c" type="f" corresp="#s1:l4">ghevonden</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Christus cruys vol <rhyme label="b" type="m" corresp="#s1:l3">weerdicheydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">In de aerde wast <rhyme label="a" type="f">ghesteken</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Door de <rhyme label="a" type="f" corresp="#s2:l1">treken</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Vanden boosen mensch <rhyme label="b" type="m">versteent</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Maer de aerde door Godts <rhyme label="c" type="f">voeghen</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s2:l4">ghenoeghen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Heeft het ons weer om <rhyme label="b" type="m" corresp="#s2:l3">verleent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">T'licht noch root al vanden <rhyme label="a" type="f">bloede</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">T'ons <rhyme label="a" type="f" corresp="#s3:l1">behoede</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat uyt zijne wonden <rhyme label="b" type="m">liep</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">En ontrent de naeghel <rhyme label="c" type="f">gaeten</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Wilt dit <rhyme label="c" type="f" corresp="#s3:l4">vaeten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Light dit bloet in t'houdt seer <rhyme label="b" type="m" corresp="#s3:l3">diefol</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dese bloede roode <rhyme label="a" type="f">plecken</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Die daer <rhyme label="a" type="f" corresp="#s4:l1">decken</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">T'heylich cruyce hier en <rhyme label="b" type="m">daer</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Sijn ghelijck sy syn <rhyme label="c" type="f">ghedreven</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Uyt het <rhyme label="c" type="f" corresp="#s4:l4">leven</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Schoon gelijck corael <rhyme label="b" type="m" corresp="#s4:l3">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Om dit cruyce te <rhyme label="a" type="f">vercieren</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Siet men <rhyme label="a" type="f" corresp="#s5:l1">swieren</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Elcken boom met syn nieuw <rhyme label="b" type="m">bladt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En het cruydt dat groeyt weer <rhyme label="c" type="f">omme</rhyme></l>
        <l id="s5:l5" met="2" type="+-">T'gheeft syn <rhyme label="c" type="f" corresp="#s5:l4">blomme</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">T'cruypt lancx d'aerde by den <rhyme label="b" type="m" corresp="#s5:l3">schat</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dese stomme <rhyme label="a" type="f">creaturen</rhyme></l>
        <l id="s6:l2" met="2" type="+-">T'alder <rhyme label="a" type="f" corresp="#s6:l1">uren</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Eeren t'cruys op hun <rhyme label="b" type="m">faitsoen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Conden sy, sy souden <rhyme label="c" type="f">wenschen</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Dat de <rhyme label="c" type="f" corresp="#s6:l4">menschen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Alle eere souden <rhyme label="b" type="m" corresp="#s6:l3">doen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Haest u dan wilt u <rhyme label="a" type="f">bereyden</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Sonder <rhyme label="a" type="f" corresp="#s7:l1">beyden</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Compt in dese schoon <rhyme label="b" type="m">contrey</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">In ootmoedicheydt wilt <rhyme label="c" type="f">daelen</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">End' in <rhyme label="c" type="f" corresp="#s7:l4">haelen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Desen alder-schoonsten <rhyme label="b" type="m" corresp="#s7:l3">Mey</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Aen dit cruys heeft Godt den <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s8:l2" met="2" type="+-">T'uwer <rhyme label="a" type="f" corresp="#s8:l1">eere</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Eens ghesmaeckt de bitter <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Om u siele eens te <rhyme label="c" type="f">bringhen</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Met <rhyme label="c" type="f" corresp="#s8:l4">verlinghen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">In syn Hemels Vaeders <rhyme label="b" type="m" corresp="#s8:l3">schoot</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Slaet op t'Cruyce dan u <rhyme label="a" type="f">ooghen</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Wilt u <rhyme label="a" type="f" corresp="#s9:l1">pooghen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Om te eeren desen <rhyme label="b" type="m">pandt</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Wilter hem in u hert <rhyme label="c" type="f">besluyten</rhyme></l>
        <l id="s9:l5" met="2" type="+-">Ghy sult <rhyme label="c" type="f" corresp="#s9:l4">fruyten</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Daer in vinden veel der <rhyme label="b" type="m" corresp="#s9:l3">hand'</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Orlof die hier syt in <rhyme label="a" type="f">t'vaeren</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Als de <rhyme label="a" type="f" corresp="#s10:l1">baeren</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Op u commen door <rhyme label="b" type="m">tempeest</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Als ghy syt in u <rhyme label="c" type="f">benauwen</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-">Wilt <rhyme label="c" type="f" corresp="#s10:l4">betrauwen</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Op Godt en syn Cruyce <rhyme label="b" type="m" corresp="#s10:l3">meest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
