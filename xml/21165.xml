  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Ha! fleur der <rhyme label="a" type="f">Vrouwen</rhyme>!</l>
        <l id="s1:l2" met="2" type="-+">Waer door <rhyme label="b" type="m">Goddin</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Acht ghy u Slaef niet <rhyme label="c" type="m">meer</rhyme>?</l>
        <l id="s1:l4" met="2" type="-+">Sal 't u niet <rhyme label="a" type="f" corresp="#s1:l1">rouwen</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Door d'oude <rhyme label="b" type="m" corresp="#s1:l2">Min</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat ick om u <rhyme label="c" type="m" corresp="#s1:l3">verteer</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Mijn bloedt // ghy <rhyme label="d" type="m">doet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">My 't alderwreedtste <rhyme label="e" type="m">leedt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Dat oyt een Tijgher <rhyme label="e" type="m" corresp="#s1:l8">wreedt</rhyme></l>
        <l id="s1:l10" met="3" type="+-">Of Wolff het Schaepje <rhyme label="e" type="m" corresp="#s1:l8">deed</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Dat, om dat ghy voor my <rhyme label="f" type="m">vliedt</rhyme></l>
        <l id="s1:l12" met="4" type="+-">Doet ghy my veel meer <rhyme label="f" type="m" corresp="#s1:l11">verdriet</rhyme></l>
        <l id="s1:l13" met="4" type="+-">Als een Mensch op Aerden <rhyme label="e" type="m" corresp="#s1:l8">weet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Al mocht ick <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s2:l2" met="2" type="-+">In <rhyme label="b" type="m">d'heerschappy</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Van d'alder-eelste <rhyme label="c" type="m">Graef</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">'t Rijck soud' ick <rhyme label="a" type="f" corresp="#s2:l1">gheven</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Voor 't soet <rhyme label="b" type="m" corresp="#s2:l2">ghevry</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En liever zijn u <rhyme label="c" type="m" corresp="#s2:l3">Slaef</rhyme>:</l>
        <l id="s2:l7" met="2" type="-+">Soo trouw // mijn <rhyme label="d" type="m">Vrouw</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Als 't Hart u <rhyme label="e" type="m">toeghedaen</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Dies bid ick u <rhyme label="e" type="m" corresp="#s2:l8">voortaen</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">Met d'Ooghjes vol <rhyme label="e" type="m" corresp="#s2:l8">ghetraen</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Ne'er gheknielt, door groote <rhyme label="f" type="m">pijn</rhyme>,</l>
        <l id="s2:l12" met="4" type="+-">Dat ick mach u Minnaer <rhyme label="f" type="m" corresp="#s2:l11">zijn</rhyme>,</l>
        <l id="s2:l13" met="4" type="+-">Of het sal my qualijck <rhyme label="e" type="m" corresp="#s2:l8">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Wat soud' my <rhyme label="a" type="f">baten</rhyme></l>
        <l id="s3:l2" met="2" type="-+">De meeste <rhyme label="b" type="m">weeld'</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van 's Wereldts ronde <rhyme label="c" type="m">kloot</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Als ick moet <rhyme label="a" type="f" corresp="#s3:l1">laten</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Dit suyver <rhyme label="b" type="m" corresp="#s3:l2">Beeldt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat my levendigh <rhyme label="c" type="m" corresp="#s3:l3">dood't</rhyme>:</l>
        <l id="s3:l7" met="2" type="-+">Soo dick // als <rhyme label="d" type="m">ick</rhyme></l>
        <l id="s3:l8" met="3" type="-+">In 't scheyden van u <rhyme label="e" type="m">keer</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Val ick van Liefde <rhyme label="e" type="m" corresp="#s3:l8">teer</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Bezwijmelt schier ter <rhyme label="e" type="m" corresp="#s3:l8">neer</rhyme>?</l>
        <l id="s3:l11" met="4" type="+-">Dat, om dat ick al den <rhyme label="f" type="m">dagh</rhyme></l>
        <l id="s3:l12" met="4" type="+-">By u, Lief, niet wesen <rhyme label="f" type="m" corresp="#s3:l11">mach</rhyme>,</l>
        <l id="s3:l13" met="4" type="+-">Dat doet mijn jonck Hart <rhyme label="e" type="m" corresp="#s3:l8">seer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ick heb veel <rhyme label="a" type="f">nachten</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Mijn rust (Godt <rhyme label="b" type="m">weet</rhyme>,)</l>
        <l id="s4:l3" met="3" type="-+">Versuymt, soo <rhyme label="c" type="m">menigh-mael</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">En met veel <rhyme label="a" type="f" corresp="#s4:l1">klachten</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Mijn tijdt <rhyme label="b" type="m" corresp="#s4:l2">besteedt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Tot Phoebus gulde <rhyme label="c" type="m" corresp="#s4:l3">strael</rhyme></l>
        <l id="s4:l7" met="2" type="-+">De Wolck // en 't <rhyme label="d" type="m">Volck</rhyme></l>
        <l id="s4:l8" met="3" type="-+">De vaeck van d'Ooghen <rhyme label="e" type="m">drongh</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Die voort u Minnaer <rhyme label="e" type="m" corresp="#s4:l8">jongh</rhyme></l>
        <l id="s4:l10" met="3" type="+-">V Stoep te derven <rhyme label="e" type="m" corresp="#s4:l8">dwongh</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Daer ick dan in <rhyme label="f" type="m">d'eenigheydt</rhyme></l>
        <l id="s4:l12" met="4" type="+-">Meenich Deuntje, door mijn <rhyme label="f" type="m" corresp="#s4:l11">leydt</rhyme>,</l>
        <l id="s4:l13" met="4" type="+-">Van u wreede wreetheydt <rhyme label="e" type="m" corresp="#s4:l8">songh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Vaert werl, <rhyme label="a" type="f">Beminde</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Vaert wel <rhyme label="b" type="m">Princes</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die 'k al mijn vryheydt <rhyme label="c" type="m">gheef</rhyme>:</l>
        <l id="s5:l4" met="2" type="-+">Ghy sult <rhyme label="a" type="f" corresp="#s5:l1">bevinden</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Mijn Ziels <rhyme label="b" type="m" corresp="#s5:l2">Vooghdes</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ghetrouw, soo langh ick <rhyme label="c" type="m" corresp="#s5:l3">leef</rhyme>:</l>
        <l id="s5:l7" met="2" type="-+">Ten waer // dat <rhyme label="d" type="m">daer</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Een ander Lief <rhyme label="e" type="m">beston</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">En op u, Lief, <rhyme label="e" type="m" corresp="#s5:l8">verwon</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">Dat ick noyt krijghen <rhyme label="e" type="m" corresp="#s5:l8">kon</rhyme>:</l>
        <l id="s5:l11" met="4" type="+-">Dat ick dan mijn sin <rhyme label="f" type="m">verliet</rhyme>,</l>
        <l id="s5:l12" met="4" type="+-">Dit sel brengen (soo 't <rhyme label="f" type="m" corresp="#s5:l11">geschiedt</rhyme>)</l>
        <l id="s5:l13" met="4" type="+-">Als ick ontrouw <rhyme label="e" type="m" corresp="#s5:l8">bevon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
