  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="12" type="-+">Sumus hic sedentes, simul conferentes, <rhyme label="a" type="f">In</rhyme></l>
        <l id="s1:l2" met="4" type="-+">omnibus qaudentes, nullum offendentes. Sed leti <rhyme label="a" type="f" corresp="#s1:l1">faceti</rhyme></l>
        <l id="s1:l3" met="4" type="-+">concinentes, Sed leti et <rhyme label="a" type="f" corresp="#s1:l1">cetera</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="12" type="-+">rgo infundatur, sic cor iocundatur, <rhyme label="a" type="f">tristi(c</rhyme>)</l>
        <l id="s2:l2" met="4" type="-+">cia fugatur, vinum <rhyme label="a" type="f" corresp="#s2:l1">in(c</rhyme>)</l>
        <l id="s2:l3" met="4" type="-+">novatur, Attente repenteque bibatur <rhyme label="a" type="f" corresp="#s2:l1">Attente</rhyme>...</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="12" type="-+">irgo generosa, dei speciosa, pre <rhyme label="a" type="f">ceteris</rhyme></l>
        <l id="s3:l2" met="4" type="-+">formosa, peradisi rosa sis genti <rhyme label="a" type="f" corresp="#s3:l1">bibenti</rhyme></l>
        <l id="s3:l3" met="4" type="-+">gratiosa, sis genti bibenti <rhyme label="a" type="f" corresp="#s3:l1">gratiosa</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="12" type="-+">ospitem laudemus, ei decantemus ut <rhyme label="a" type="f">iterum</rhyme></l>
        <l id="s4:l2" met="4" type="-+">potemus simul convivemus. Honeste modeste <rhyme label="a" type="f" corresp="#s4:l1">iubi(c</rhyme>)</l>
        <l id="s4:l3" met="4" type="-+">lemus  Honeste modeste iubilemus et <rhyme label="a" type="f" corresp="#s4:l1">cetera</rhyme>.</l>
      </lg>
    </lg>
