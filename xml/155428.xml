    <melody>Schoon lief wil mij troost geven</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DOe d' Helsche <rhyme label="a" type="f">in-gewanden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Judas herte <rhyme label="a" type="f" corresp="#s1:l1">branden</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Door Goudt-dorst, en door <rhyme label="b" type="m">haet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Op <rhyme label="c" type="f">Godt-en-mensch-versoender</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soo socht hem die <rhyme label="c" type="f" corresp="#s1:l4">quaed-doender</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Te lev'ren door <rhyme label="b" type="m" corresp="#s1:l3">verraedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Noch quam hy <rhyme label="a" type="f">ondertusschen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Aen Jesu wanghen <rhyme label="a" type="f" corresp="#s2:l1">kussen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Als een trouw-hertigh <rhyme label="b" type="m">vriendt</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Maer 't was 't verradisch <rhyme label="c" type="f">teecken</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Den vyandt in <rhyme label="c" type="f" corresp="#s2:l4">gesteecken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Diens Moordt-lust dat hy <rhyme label="b" type="m" corresp="#s2:l3">ziend</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hier leydt ons klaer <rhyme label="a" type="f">ontwonden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het wesen van de <rhyme label="a" type="f" corresp="#s3:l1">sonden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En 't Lock-Aes tot ons <rhyme label="b" type="m">val</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Geborrelt uyt de <rhyme label="c" type="f">Boesem</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Der Helle, en den <rhyme label="c" type="f" corresp="#s3:l4">droesem</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van 's Sathans bitt're <rhyme label="b" type="m" corresp="#s3:l3">Gal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dat om ons te <rhyme label="a" type="f">verleyen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Komt vriendelijck aen <rhyme label="a" type="f" corresp="#s4:l1">vleyen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Gesuyckert in de <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En biedt ons soet <rhyme label="c" type="f">vermaecken</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Maer gheeft vergift van <rhyme label="c" type="f" corresp="#s4:l4">Draecken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">En Adderen <rhyme label="b" type="m" corresp="#s4:l3">Fenijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De sonde dient de <rhyme label="a" type="f">Sathan</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Tot Menschen-vangh, hy staet <rhyme label="a" type="f" corresp="#s5:l1">dan</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Verhongert door <rhyme label="b" type="m">Doem-lust</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En loert met Jaghers <rhyme label="c" type="f">Ooghen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Wie datter wordt <rhyme label="c" type="f" corresp="#s5:l4">bewogen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Als hem de sonde <rhyme label="b" type="m" corresp="#s5:l3">kust</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Strack zijn sijn <rhyme label="a" type="f">Draecke-klauwen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">In weer, om te <rhyme label="a" type="f" corresp="#s6:l1">benauwen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Die licht-verleyde <rhyme label="b" type="m">ziel</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En sleept met Helsche <rhyme label="c" type="f">banden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Na 't eeuwigh pijnlijck <rhyme label="c" type="f" corresp="#s6:l4">branden</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die hem te proye <rhyme label="b" type="m" corresp="#s6:l3">viel</rhyme>.</l>
      </lg>
    </lg>
  </text>
