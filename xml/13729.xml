    <melody>Ik wou dat ik was een wilde zwaan</melody>
    <categories>
      <category translation="amusement">vermaak</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEns dat ick in Oudt <rhyme label="a" type="f">Sparen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Te Kermis hadt <rhyme label="b" type="m">gheweest</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En als ick wech soud’ <rhyme label="a" type="f" corresp="#s1:l1">varen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Vond ick een Boer, een <rhyme label="b" type="m" corresp="#s1:l2">Geest</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Maer soo droncken als een <rhyme label="b" type="m" corresp="#s1:l2">beest</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Die riep om <rhyme label="c" type="m">Vracht</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ick sloegh hem toe en <rhyme label="c" type="m" corresp="#s1:l6">dacht</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Op sijn Wagen sit het <rhyme label="b" type="m" corresp="#s1:l2">meest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick segje toe wy <rhyme label="a" type="f">voeren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wy hdden sulcken <rhyme label="b" type="m">pret</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Huys-luy, en de <rhyme label="a" type="f" corresp="#s2:l1">Boeren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En de Burgers al te <rhyme label="b" type="m" corresp="#s2:l2">met</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Hebben vreught, maer wy <rhyme label="b" type="m" corresp="#s2:l2">byget</rhyme>:</l>
        <l id="s2:l6" met="2" type="-+">Maecktent soo <rhyme label="c" type="m">grof</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat loover en <rhyme label="c" type="m" corresp="#s2:l6">lof</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Leyt, gewont daer van te <rhyme label="b" type="m" corresp="#s2:l2">bedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Paerden voor de <rhyme label="a" type="f">Wagen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Laefd’ hy met <rhyme label="b" type="m">Brouwers-vocht</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die sonder Swiep of <rhyme label="a" type="f" corresp="#s3:l1">slagen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Doen vlogen in de <rhyme label="b" type="m" corresp="#s3:l2">Locht</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Dat ick in my selven <rhyme label="b" type="m" corresp="#s3:l2">docht</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">En meer met <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Daer legge wy in’t <rhyme label="c" type="m" corresp="#s3:l6">Y</rhyme>:</l>
        <l id="s3:l8" met="4" type="+-">Want de Boer ‘t niet houwen <rhyme label="b" type="m" corresp="#s3:l2">mocht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe gaet den droncken Boer <rhyme label="a" type="f">an</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Riep daer een uyt den <rhyme label="b" type="m">hoop</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Maer siet den droncken <rhyme label="a" type="f" corresp="#s4:l1">Voer-man</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En gaf daerom geen <rhyme label="b" type="m" corresp="#s4:l2">koop</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Tot hy van de Wagen <rhyme label="b" type="m" corresp="#s4:l2">droop</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">En viel in ‘t <rhyme label="c" type="m">spoor</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Daer reeden wy doen <rhyme label="c" type="m" corresp="#s4:l6">door</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">En de Boer bleef in de <rhyme label="b" type="m" corresp="#s4:l2">Loop</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een die hem <rhyme label="a" type="f">toe-vertroude</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Te stueren greep het <rhyme label="b" type="m">Bit</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat kon hy mee niet <rhyme label="a" type="f" corresp="#s5:l1">houden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ick docht wat spel is <rhyme label="b" type="m" corresp="#s5:l2">dit</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">‘k Wed’ ick hier niet langer <rhyme label="b" type="m" corresp="#s5:l2">sit</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Eer ick op <rhyme label="c" type="m">was</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Lach al den hoop in ‘t <rhyme label="c" type="m" corresp="#s5:l6">gras</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">D’een die viel sijn Bil uyt ‘t <rhyme label="b" type="m" corresp="#s5:l2">lit</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Daer quam den Boer aen <rhyme label="a" type="f">dralen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Iouw reeckel riep daer <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">De duycker mach jouw <rhyme label="a" type="f" corresp="#s6:l1">halen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">De Voerman seyd ‘k hoop <rhyme label="b" type="m" corresp="#s6:l2">neen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Ick heb schae genoeg <rhyme label="b" type="m" corresp="#s6:l2">gheleen</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Ick deed mijn <rhyme label="c" type="m">best</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Oock ben ick swaer <rhyme label="c" type="m" corresp="#s6:l6">gequetst</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Houdt jouw vracht en weest te <rhyme label="b" type="m" corresp="#s6:l2">vreen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den een die most daer <rhyme label="a" type="f">blijven</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die hadt voor ‘t eerst <rhyme label="b" type="m">genoegh</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Wy raeckten met ons <rhyme label="a" type="f" corresp="#s7:l1">bijven</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Soo verr’ tot in een <rhyme label="b" type="m" corresp="#s7:l2">kroegh</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Daer ick dit den Waert <rhyme label="b" type="m" corresp="#s7:l2">versloegh</rhyme>.</l>
        <l id="s7:l6" met="2" type="-+">Doe gingen wy <rhyme label="c" type="m">voort</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Nae <rhyme label="c" type="m" corresp="#s7:l6">d’Haerlemmer-poort</rhyme>:</l>
        <l id="s7:l8" met="4" type="+-">Want ten was niet veel te <rhyme label="b" type="m" corresp="#s7:l2">vroegh</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
