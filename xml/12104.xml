    <melody>Nu wees gegroet Maria zoet</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghelijck den Hert naer’t water <rhyme label="a" type="m">snaeckt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Der suyuer klaer <rhyme label="b" type="f">fonteyne</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Aldus mijn siele dorst en <rhyme label="a" type="m" corresp="#s1:l1">haeckt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Naer Iesus minne <rhyme label="b" type="f" corresp="#s1:l2">reyne</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het deruen van v klaer <rhyme label="a" type="m">aenschijn</rhyme></l>
        <l id="s2:l2" met="3" type="-+">(O Iesu) doet my <rhyme label="b" type="f">smerte</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">O wesen schoon! o trooster <rhyme label="a" type="m" corresp="#s2:l1">mijn</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Daelt neder in mijn <rhyme label="b" type="f" corresp="#s2:l2">herte</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In allen noot wilt my <rhyme label="a" type="m">bystaen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">In druck wilt my troost <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">In d’armen dijns ghenaed’ <rhyme label="a" type="m" corresp="#s3:l1">ontfaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">O Iesu hooch <rhyme label="b" type="f" corresp="#s3:l2">ghepresen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Iesu alder-liefste <rhyme label="a" type="m">lief</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">In als wilt my <rhyme label="b" type="f">gheleyden</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Bevrijt my vanden helschen <rhyme label="a" type="m" corresp="#s4:l1">dief</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als ick van hier sal <rhyme label="b" type="f" corresp="#s4:l2">scheyden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Iesu door v minne <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wilt my doch gracy’ <rhyme label="b" type="f">gheuen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Om te be-eruen ‘shemels <rhyme label="a" type="m" corresp="#s5:l1">goet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Naer dit allendich <rhyme label="b" type="f" corresp="#s5:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Op dat ick inder <rhyme label="a" type="m">eeuwicheyt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Met v Heer’ mach <rhyme label="b" type="f">verblijden</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">En loven uwe <rhyme label="a" type="m" corresp="#s6:l1">Maiesteyt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Nu en tot allen <rhyme label="b" type="f" corresp="#s6:l2">tijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
