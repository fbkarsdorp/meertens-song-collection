  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VVie wil hooren een Nieu <rhyme label="a" type="m">Liet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hoort toe ick sal ’t jou <rhyme label="b" type="f">singhen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van drie Ghesellen uyt <rhyme label="a" type="m" corresp="#s1:l1">Roosendael</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Op Vrybuyt wast dat zy <rhyme label="b" type="f" corresp="#s1:l2">ginghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Zy gingen byloo by nachte <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Maer zy ginghen op <rhyme label="b" type="f">avonture</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo langhe tot dat zy gheldeloos <rhyme label="a" type="m" corresp="#s2:l1">ware</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat duerden een kort <rhyme label="b" type="f" corresp="#s2:l2">hallifure</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als zy ter halver weghen <rhyme label="a" type="m">quamen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Een Koopman quam haer <rhyme label="b" type="f">teghen</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Legh of, legh of jou Koopmans <rhyme label="a" type="m" corresp="#s3:l1">goedt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wilt ghyder behouden u <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick legh niet of mijn Koopmans <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En daer toe mijn jonghe <rhyme label="b" type="f">Leven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ick hebber noch Silver en rooder <rhyme label="a" type="m" corresp="#s4:l1">gout</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En dat sal icker jou <rhyme label="b" type="f" corresp="#s4:l2">gheven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die Koopman zijnen Tas <rhyme label="a" type="m">ontsloot</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En hy schoncker wel honder <rhyme label="b" type="f">Kroone</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Hout daer Ghesellen van <rhyme label="a" type="m" corresp="#s5:l1">Roosendael</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Verteertse met Vroutjes <rhyme label="b" type="f" corresp="#s5:l2">schoone</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doe sprack die jongste al van die <rhyme label="a" type="m">drie</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die Buyt willen wy gaen <rhyme label="b" type="f">klijven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En geven die Koopman zijn halve goedt <rhyme label="a" type="m" corresp="#s6:l1">weer</rhyme></l>
        <l id="s6:l4" met="3" type="-+">So mach hy een koopman <rhyme label="b" type="f" corresp="#s6:l2">blijven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Doe sprack die outste al van die <rhyme label="a" type="m">drie</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die Buyt willen wy gaen <rhyme label="b" type="f">houwen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En koopen ons elck een Appelgrau <rhyme label="a" type="m" corresp="#s7:l1">Ros</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En rijden t’Antwerpen <rhyme label="b" type="f" corresp="#s7:l2">binnen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als zy t’Antwerpen binnen <rhyme label="a" type="m">quamen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">t’Antwerpen binnen der <rhyme label="b" type="f">mueren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Sy wierden op een Pijnbanck <rhyme label="a" type="m" corresp="#s8:l1">geleyt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dat deder haer jonck hart <rhyme label="b" type="f" corresp="#s8:l2">treuren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Nu zijnder al ons leden <rhyme label="a" type="m">lam</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Wat sullen wy gaen <rhyme label="b" type="f">beginnen</rhyme>?</l>
        <l id="s9:l3" met="4" type="-+">Ick wilder niet meer nae Rosendal <rhyme label="a" type="m" corresp="#s9:l1">gaen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">En hooren die Nachtegael <rhyme label="b" type="f" corresp="#s9:l2">singhen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O Nachtegael, kleyn <rhyme label="a" type="m">Voghelkijn</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Hoe heb jy mijn <rhyme label="b" type="f">bedroghen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Gy plach te singen onder een <rhyme label="a" type="m" corresp="#s10:l1">Peereboom</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Daer veel schoone Vroutjens <rhyme label="b" type="f" corresp="#s10:l2">waren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O Nachtegael, kleyn <rhyme label="a" type="m">Voghelijn</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Wil jy mijn leeren <rhyme label="b" type="f">singhen</rhyme>?</l>
        <l id="s11:l3" met="4" type="-+">Ick singher int wout kleyn Voghel <rhyme label="a" type="m" corresp="#s11:l1">stout</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Niemandt kander my <rhyme label="b" type="f" corresp="#s11:l2">dwinghen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ben jy int wout kleyn Voghel <rhyme label="a" type="m">stout</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Kan jou niemandt <rhyme label="b" type="f">bedwingen</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">So dwingt jou den hagel die koude <rhyme label="a" type="m" corresp="#s12:l1">sneeu</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Het Looff al van der <rhyme label="b" type="f" corresp="#s12:l2">Linde</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
