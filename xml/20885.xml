      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <location>
      <orginal-name>antwerpen</orginal-name>
      <standard-name>Antwerp, Belgium</standard-name>
      <coordinates>
        <lon>51.2211097</lon>
        <lat>4.3997081</lat>
      </coordinates>
    </location>
    <tags>
      <tag>christmas song</tag>
    </tags>
    <melody>Luz de mi alma</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">O Heer der <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">'k Koom my <rhyme label="a" type="f" corresp="#s1:l1">verneeren</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Met recht en <rhyme label="b" type="f">reden</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Met geboge <rhyme label="b" type="f" corresp="#s1:l3">leden</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Voor uw' <rhyme label="c" type="m">Majesteyt</rhyme>,</l>
        <l id="s1:l6" met="5" type="+-">O Jesu! Jesu! die nu bitter <rhyme label="c" type="m" corresp="#s1:l5">schreyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Om mijne <rhyme label="a" type="f">wonden</rhyme></l>
        <l id="s2:l2" met="2" type="-+">(Ick meen mijn <rhyme label="a" type="f" corresp="#s2:l1">sonden</rhyme>,)</l>
        <l id="s2:l3" met="2" type="-+">Stort Ghy uw' <rhyme label="b" type="f">traenen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Die den wegh my <rhyme label="b" type="f" corresp="#s2:l3">baenen</rhyme></l>
        <l id="s2:l5" met="3" type="+-">Nae des hemels <rhyme label="c" type="m">hof</rhyme>,</l>
        <l id="s2:l6" met="5" type="+-">O Jesu! Jesu! Waermen singht uw' <rhyme label="c" type="m" corresp="#s2:l5">lof</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">By d' Os, en <rhyme label="a" type="f">Ezel</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">By Vos, en <rhyme label="a" type="f" corresp="#s3:l1">Wesel</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Hebt Ghy uw' <rhyme label="b" type="f">wooningh</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Ghy, des hemels <rhyme label="b" type="f" corresp="#s3:l3">Koningh</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Ghy, Mariaes <rhyme label="c" type="m">Kind</rhyme>,</l>
        <l id="s3:l6" met="5" type="+-">O Jesv! Jesv! die mijn ziel <rhyme label="c" type="m" corresp="#s3:l5">bemint</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ghy zijt <rhyme label="a" type="f">gekomen</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Ghy zijt <rhyme label="a" type="f" corresp="#s4:l1">vernomen</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Kleyn op dees <rhyme label="b" type="f">Aerde</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">God van grooter <rhyme label="b" type="f" corresp="#s4:l3">waerde</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">In een <rhyme label="c" type="m">Beesten-Stal</rhyme>,</l>
        <l id="s4:l6" met="5" type="+-">O Jesv! Jesv! om mijn vuyle <rhyme label="c" type="m" corresp="#s4:l5">val</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Ach! wil <rhyme label="a" type="f">ontfarmen</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Ach! wil <rhyme label="a" type="f" corresp="#s5:l1">omarmen</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Uw' slaef der <rhyme label="b" type="f">slaven</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Die voortaen wil <rhyme label="b" type="f" corresp="#s5:l3">draven</rhyme></l>
        <l id="s5:l5" met="3" type="+-">'t Rechte deughde <rhyme label="c" type="m">pad</rhyme>:</l>
        <l id="s5:l6" met="5" type="+-">O Iesu! Iesu! gun uw' dienaer <rhyme label="c" type="m" corresp="#s5:l5">dat</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Ick koom U <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">U, die van <rhyme label="a" type="f" corresp="#s6:l1">boven</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Zijt komen <rhyme label="b" type="f">daelen</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Om mijn ziel te <rhyme label="b" type="f" corresp="#s6:l3">haelen</rhyme></l>
        <l id="s6:l5" met="3" type="+-">In uw' hoogh <rhyme label="c" type="m">Paleys</rhyme>,</l>
        <l id="s6:l6" met="5" type="+-">O Iesu! Iesu! waer 't is vree, en <rhyme label="c" type="m" corresp="#s6:l5">peys</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Laet my U <rhyme label="a" type="f">kussen</rhyme>!</l>
        <l id="s7:l2" met="2" type="-+">Laet my U <rhyme label="a" type="f" corresp="#s7:l1">sussen</rhyme>!</l>
        <l id="s7:l3" met="2" type="-+">Ach! laet my <rhyme label="b" type="f">droogen</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Uwe natte <rhyme label="b" type="f" corresp="#s7:l3">oogen</rhyme>,</l>
        <l id="s7:l5" met="3" type="+-">Die dus zijn <rhyme label="c" type="m">bedouwt</rhyme>,</l>
        <l id="s7:l6" met="5" type="+-">O Jesu! Iesu! om mijn groote <rhyme label="c" type="m" corresp="#s7:l5">fout</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
