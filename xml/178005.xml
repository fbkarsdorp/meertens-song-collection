  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hij zal noch wanklen, noch <rhyme label="a" type="f">bezwijken</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die op den HEER <rhyme label="b" type="m">vertrouwt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En op zijn goedheid <rhyme label="b" type="m" corresp="#s1:l2">bouwt</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Hij zal, als Sions berg, nooit <rhyme label="a" type="f" corresp="#s1:l1">wijken</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Wiens grondslag door geen aardsch <rhyme label="c" type="f">vermogen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ooit wordt <rhyme label="c" type="f" corresp="#s1:l5">bewoogen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gelijk 't gebergt, dat hoog <rhyme label="a" type="f">gereezen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Om Salem ligt <rhyme label="b" type="m">gespreid</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zoo is, in <rhyme label="b" type="m" corresp="#s2:l2">eeuwigheid</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">De HEER rondom hen, die Hem <rhyme label="a" type="f" corresp="#s2:l1">vreezen</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Rondom zijn volk, 't welk Hij wil <rhyme label="c" type="f">hoeden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Voor <rhyme label="c" type="f" corresp="#s2:l5">tegenspoeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want hoe de boozen zich doen <rhyme label="a" type="f">schroomen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Door wreede <rhyme label="b" type="m">heerschappij</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Nog zal hun <rhyme label="b" type="m" corresp="#s3:l2">dwinglandij</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Niet rusten op het lot der <rhyme label="a" type="f" corresp="#s3:l1">vroomen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Opdat zij nooit, van 't recht <rhyme label="c" type="f">geweeken</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Zich zelven <rhyme label="c" type="f" corresp="#s3:l5">wreeken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Geef, HEER, den goeden uwen <rhyme label="a" type="f">zegen</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Doe wel aan 't vroom <rhyme label="b" type="m">gemoed</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Maar hem, die onrecht <rhyme label="b" type="m" corresp="#s4:l2">doet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En die zich neigt tot kromme <rhyme label="a" type="f" corresp="#s4:l1">wegen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Zal God verdoen; doch Isrel <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s4:l6" met="3" type="-+">En vrede <rhyme label="c" type="f" corresp="#s4:l5">geeven</rhyme>.</l>
      </lg>
    </lg>
  </text>
