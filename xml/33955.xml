  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Iesus in parabel <rhyme label="a" type="f">seyde</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">'t Rijke Goodts dat lijkt <rhyme label="b" type="m">ydoon</rhyme></l>
        <l id="s1:l3" met="4" type="-+">By een Koningh, die <rhyme label="a" type="f" corresp="#s1:l1">bereyde</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Eenen Bruyloft voor sijn <rhyme label="b" type="m" corresp="#s1:l2">Soon</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">De genooden hy <rhyme label="c" type="m">ontbiedt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Maer se wouden koomen <rhyme label="c" type="m" corresp="#s1:l5">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy sendt weeder ander <rhyme label="a" type="f">knechten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Tot dees die hy hadt <rhyme label="b" type="m">genoodt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die haer souden <rhyme label="a" type="f" corresp="#s2:l1">onder-rechten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Al 't gemeste is <rhyme label="b" type="m" corresp="#s2:l2">gedoodt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Alle dingen sijn <rhyme label="c" type="m">bereyt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Komt ter Bruyloft: hy haer <rhyme label="c" type="m" corresp="#s2:l5">seyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer sy achten niet dees <rhyme label="a" type="f">dingen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Sommigh gingen na haer <rhyme label="b" type="m">Landt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Na haer Koopmanschap som' <rhyme label="a" type="f" corresp="#s3:l1">gingen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Som' de Knechten deeden <rhyme label="b" type="m" corresp="#s3:l2">schandt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Ende na versmaetheyt <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Hebben sy de Knechts <rhyme label="c" type="m" corresp="#s3:l5">gedoot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als den Koningh 't wierd <rhyme label="a" type="f">geware</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Worde uytermaten <rhyme label="b" type="m">gram</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Heeft vernielt dees <rhyme label="a" type="f" corresp="#s4:l1">Moordenaren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Hare stadt gaf hy te <rhyme label="b" type="m" corresp="#s4:l2">vlam</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Door sijn Leegers die hy <rhyme label="c" type="m">sondt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En seydt tot sijn knechts <rhyme label="c" type="m" corresp="#s4:l5">terstondt</rhyme>:</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Mijne Bruyloft is wel <rhyme label="a" type="f">reede</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">De genoode sijn 't niet <rhyme label="b" type="m">waert</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Langhs de straten van de <rhyme label="a" type="f" corresp="#s5:l1">steede</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Gaet, en naerstelijk <rhyme label="b" type="m" corresp="#s5:l2">vergaert</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Al de geene die gy <rhyme label="c" type="m">vindt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Tot der Bruyloft noodt als <rhyme label="c" type="m" corresp="#s5:l5">vrindt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sijne knechten dus <rhyme label="a" type="f">gesonden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Gingen soeken langhs de <rhyme label="b" type="m">straet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En vergaerden wat sy <rhyme label="a" type="f" corresp="#s6:l1">vonden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Alle menschen goet en <rhyme label="b" type="m" corresp="#s6:l2">quaet</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">En alsoo is 't <rhyme label="c" type="m">Bruylofs-Feest</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Van aensitters vol <rhyme label="c" type="m" corresp="#s6:l5">geweest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer den Koningh is <rhyme label="a" type="f">gekoomen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">By de gasten <rhyme label="b" type="m">in-gegaen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En hy heeft daer een <rhyme label="a" type="f" corresp="#s7:l1">vernoomen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die geen Bruylofs-kleedt hadt <rhyme label="b" type="m" corresp="#s7:l2">aen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Hy seydt, vriendt, geeft mijn <rhyme label="c" type="m">bescheedt</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Hoe, hebt gy geen <rhyme label="c" type="m" corresp="#s7:l5">Bruylofs-kleedt</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer hy sweegh: dus seydt den <rhyme label="a" type="f">Koningh</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Handen ende voeten <rhyme label="b" type="m">bindt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Smijt hem in de donker <rhyme label="a" type="f" corresp="#s8:l1">wooningh</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Daer men geene Licht en <rhyme label="b" type="m" corresp="#s8:l2">vindt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Daer sal sijn der tanden <rhyme label="c" type="m">kris</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">En geschrey van <rhyme label="c" type="m" corresp="#s8:l5">droeffenis</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Want daer sijn geroepen <rhyme label="a" type="f">veele</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Weynigh uytverkooren <rhyme label="b" type="m">sijn</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Stelt ons by het kleyne <rhyme label="a" type="f" corresp="#s9:l1">deele</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dat wy sien uw schoon <rhyme label="b" type="m" corresp="#s9:l2">aenschijn</rhyme>;</l>
        <l id="s9:l5" met="4" type="-+">Laet ons togh ons <rhyme label="c" type="m">Bruylofs-kleedt</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Hebben t'allen tijt <rhyme label="c" type="m" corresp="#s9:l5">bereedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
