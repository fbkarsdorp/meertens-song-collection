    <melody>Minnelijk rein van wezen fris</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ick droomden lestmael eenen <rhyme label="a" type="m">droom</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van wegen <rhyme label="b" type="m">Blockers-dijck</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Hoe dat ick sat op eenen <rhyme label="a" type="m" corresp="#s1:l1">Boom</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En sagh het Spaens <rhyme label="b" type="m" corresp="#s1:l2">practijck</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Mijn docht dat uyt het <rhyme label="b" type="m" corresp="#s1:l2">slijck</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Quaem eenen grooten treyn met <rhyme label="c" type="f">Papen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die songen schots <rhyme label="b" type="m" corresp="#s1:l2">Musijck</rhyme></l>
        <l id="s1:l8" met="3" type="-+">En sprongen als de <rhyme label="c" type="f" corresp="#s1:l6">Apen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Voor eerst quam Pater Sijnen <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Broer Jaques en <rhyme label="b" type="m">Johan</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Die gingen kruys by kruycen <rhyme label="a" type="m" corresp="#s2:l1">slaen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Den Geus most inden <rhyme label="b" type="m" corresp="#s2:l2">Ban</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Broer Peter als een <rhyme label="b" type="m" corresp="#s2:l2">man</rhyme>.</l>
        <l id="s2:l6" met="4" type="-+">Nam terstont een quast met <rhyme label="c" type="f">water</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die voort het werck <rhyme label="b" type="m" corresp="#s2:l2">began</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Met hulpe van de <rhyme label="c" type="f" corresp="#s2:l6">Mater</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Calo dat wort voor eerst <rhyme label="a" type="m">gewijt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Besprenckelt en <rhyme label="b" type="m">bekast</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Niet eenen Paep osde sijn <rhyme label="a" type="m" corresp="#s3:l1">vlijt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Men heeft soo langh <rhyme label="b" type="m" corresp="#s3:l2">gepast</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Op 't lest soo brack de <rhyme label="b" type="m" corresp="#s3:l2">quast</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Doen vervloeckte men de <rhyme label="c" type="f">Geusen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Broer Jan hielt 't kruyckjen <rhyme label="b" type="m" corresp="#s3:l2">vast</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Haer hoop begon te <rhyme label="c" type="f" corresp="#s3:l6">kneusen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Doch even wel met volle <rhyme label="a" type="m">macht</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Soo trockmen daer van <rhyme label="b" type="m">daen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En voor Maria-Schans <rhyme label="a" type="m" corresp="#s4:l1">ghebracht</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Het wijen ging weer <rhyme label="b" type="m" corresp="#s4:l2">aen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En voor de borst te <rhyme label="b" type="m" corresp="#s4:l2">slaen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">De geuskens sy <rhyme label="c" type="f">verdoemden</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En heb ick wel <rhyme label="b" type="m" corresp="#s4:l2">verstaen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">De Schans sy heyligh <rhyme label="c" type="f" corresp="#s4:l6">noemden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doen quam daer een geschoren <rhyme label="a" type="m">hoop</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Tot duysent drie of <rhyme label="b" type="m">vier</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Van angst ick in de blaetjes <rhyme label="a" type="m" corresp="#s5:l1">kroop</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Door 't ijselijck <rhyme label="b" type="m" corresp="#s5:l2">getier</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Sy speelden op de <rhyme label="b" type="m" corresp="#s5:l2">Lier</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Op Trommels en <rhyme label="c" type="f">Schermeyen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">En maeckten goede <rhyme label="b" type="m" corresp="#s5:l2">cier</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Om dat de kans sou <rhyme label="c" type="f" corresp="#s5:l6">dreyen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sy waren al in 't swart <rhyme label="a" type="m">gekleet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Tot teecken van haer <rhyme label="b" type="m">rou</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Dat menich Jaer in 't hert haer <rhyme label="a" type="m" corresp="#s6:l1">beet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En sagen als een <rhyme label="b" type="m" corresp="#s6:l2">Schou</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Een groote <rhyme label="b" type="m" corresp="#s6:l2">Lieve-vrou</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Wiert van minne-Broers <rhyme label="c" type="f">gedragen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Met vrijven en <rhyme label="b" type="m" corresp="#s6:l2">geklouw</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Sy op malkand'ren <rhyme label="c" type="f" corresp="#s6:l6">sagen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Op 't lest wie hadt het oyt <rhyme label="a" type="m">gelooft</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van sulcken <rhyme label="b" type="m">Apen-spel</rhyme></l>
        <l id="s7:l3" met="4" type="-+">De Swarte kap gingh over 't <rhyme label="a" type="m" corresp="#s7:l1">hooft</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dat quam te wonder <rhyme label="b" type="m" corresp="#s7:l2">wel</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Met luyen en <rhyme label="b" type="m" corresp="#s7:l2">Gebel</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Quam daer voor een Geest <rhyme label="c" type="f">verschijnen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Wt Vagevyer, of <rhyme label="b" type="m" corresp="#s7:l2">Hel</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Dat de mijn slaap <rhyme label="c" type="f" corresp="#s7:l6">verdwijnen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dat was den Paep die lest <rhyme label="a" type="m">verdronck</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gints in de <rhyme label="b" type="m">Mossel-slagh</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Die met sijn Cap te gronde <rhyme label="a" type="m" corresp="#s8:l1">sonck</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En noyt quam voor den <rhyme label="b" type="m" corresp="#s8:l2">dagh</rhyme>;</l>
        <l id="s8:l5" met="3" type="-+">Die deed daer zijn <rhyme label="b" type="m" corresp="#s8:l2">beclagh</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Hoe dat haer blijschap <rhyme label="c" type="f">kraeckte</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Dat deed mijn sulcken <rhyme label="b" type="m" corresp="#s8:l2">lach</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Dat ick van slaep <rhyme label="c" type="f" corresp="#s8:l6">ontwaeckte</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
