    <melody>Mijn God waar zal ik heengaan</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">KIndt wilt niet staen noch vast <rhyme label="a" type="f">cleuen</rhyme>//</l>
        <l id="s1:l2" met="4" type="-+">Seght oock niet ick sal langh <rhyme label="b" type="f">leuen</rhyme>//</l>
        <l id="s1:l3" met="3" type="-+">Aen onrecht schat, maer wilt dat <rhyme label="a" type="f" corresp="#s1:l1">laken</rhyme>//</l>
        <l id="s1:l4" met="4" type="-+">Want t'vordert niet in tijt der <rhyme label="b" type="f" corresp="#s1:l2">wraken</rhyme>//</l>
        <l id="s1:l5" met="4" type="-+">Begheerlijcke saken// en volcht niet <rhyme label="c" type="m">na</rhyme>//</l>
        <l id="s1:l6" met="4" type="-+">Niemandt oock te seer op sijn sterchz <rhyme label="c" type="m" corresp="#s1:l5">sta</rhyme>//</l>
        <l id="s1:l7" met="4" type="-+">seght nz wie mach my hier onder hem <rhyme label="b" type="f" corresp="#s1:l2">maken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want wrekende wreekt de <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Laet v de boosheyt niet <rhyme label="b" type="f">becueren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Seght niet ick sondighe <rhyme label="a" type="f" corresp="#s2:l1">seere</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En wat sachmen my droefs <rhyme label="b" type="f" corresp="#s2:l2">ghebueren</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die v can verschueren// heeft groot <rhyme label="c" type="m">ghewelt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Al is hy oock lydtsaem eer hy <rhyme label="c" type="m" corresp="#s2:l5">verghelt</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Wilt daerom hier na de boosheyt niet <rhyme label="b" type="f" corresp="#s2:l2">spueren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al is v sonde <rhyme label="a" type="f">onghecastyt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Hoopt daerom niet hier sondt op <rhyme label="b" type="f">sonde</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Seght niet sulcx Godts ghenade <rhyme label="a" type="f" corresp="#s3:l1">vryt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Want sy is seer diep van <rhyme label="b" type="f" corresp="#s3:l2">gronde</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy ontfermt int ronde// sijn t straft staet <rhyme label="c" type="m">stil</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Ick sondighe oock hoe dat ick <rhyme label="c" type="m" corresp="#s3:l5">wil</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Ick en mach vergaen tot gheenen <rhyme label="b" type="f" corresp="#s3:l2">stonde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Godt can seer haest toornich <rhyme label="a" type="f">werden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Hoe wel hy oock seer is <rhyme label="b" type="f">ghenadich</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hy straft die int quaet <rhyme label="a" type="f" corresp="#s4:l1">volherden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Daeromme sijt ghy sulcx <rhyme label="b" type="f" corresp="#s4:l2">versmadich</rhyme></l>
        <l id="s4:l5" met="4" type="-+">En keert v goet dadich// traecht noch <rhyme label="c" type="m">vertreckt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Van daghe te daghe, twelckt meer <rhyme label="c" type="m" corresp="#s4:l5">beuleckt</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Want als Godts gramschap schielijck coemt, sy is <rhyme label="b" type="f" corresp="#s4:l2">schadich</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Waeyt oock niet met alle <rhyme label="a" type="f">winden</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ende gaet niet in alle <rhyme label="b" type="f">weghen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Want alsoo salmen hier <rhyme label="a" type="f" corresp="#s5:l1">vinden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Den sondaer die hier is <rhyme label="b" type="f" corresp="#s5:l2">gheneghen</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Tot dubbelheyts pleghen// seer groote <rhyme label="c" type="m">last</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Daeromme staet op Godts paden <rhyme label="c" type="m" corresp="#s5:l5">vast</rhyme></l>
        <l id="s5:l7" met="4" type="-+">En blyft by v woordt, laet lueghen <rhyme label="b" type="f" corresp="#s5:l2">versweghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Het woordt des vreedts recht <rhyme label="a" type="f">waerachtich</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Dat volght doch na, hoort dat <rhyme label="b" type="f">saechmoedich</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Op dat t'verstant sij <rhyme label="a" type="f" corresp="#s6:l1">ghedachtich</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Antwoordt te gheuen <rhyme label="b" type="f" corresp="#s6:l2">oueruloedich</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Wijsheyt, doch voorspoedich, recht antwoordt <rhyme label="c" type="m">gheeft</rhyme></l>
        <l id="s6:l6" met="4" type="-+">En duer snel ghehoor men veel <rhyme label="c" type="m" corresp="#s6:l5">beseeft</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Oock goede traech antwoord werckt niet <rhyme label="b" type="f" corresp="#s6:l2">bloedich</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hebt ghy verstant, sticht v <rhyme label="a" type="f">naesten</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Maer sijt ghy onwijs plomp van <rhyme label="b" type="f">seden</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Stopt uwen mont, wilt niet <rhyme label="a" type="f" corresp="#s7:l1">haesten</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Schielijck v oordeel te <rhyme label="b" type="f" corresp="#s7:l2">verbreden</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Op dat ghy deur reden// hier niet en <rhyme label="c" type="m">wort</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Gheuanghen in dwaesheyt die ghy wt <rhyme label="c" type="m" corresp="#s7:l5">stort</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">En van v beschaemtheyt sy <rhyme label="b" type="f" corresp="#s7:l2">gheleden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wort lof tuyter noch <rhyme label="a" type="f">pluymstrijker</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Maeckt dat u tongh v niet <rhyme label="b" type="f">beschame</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Vuer den dief en <rhyme label="a" type="f" corresp="#s8:l1">ruynwijker</rhyme></l>
        <l id="s8:l4" met="4" type="-+">En de twee-tongighe hanght <rhyme label="b" type="f" corresp="#s8:l2">blame</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Het bringht quade fame, twerckt oock <rhyme label="c" type="m">haet</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Flatteerdes sijn bouen al seer <rhyme label="c" type="m" corresp="#s8:l5">quaet</rhyme></l>
        <l id="s8:l7" met="4" type="-+">En acht dit niet slecht, soo leeft ghy <rhyme label="b" type="f" corresp="#s8:l2">bequame</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
