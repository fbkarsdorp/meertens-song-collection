    <tags/>
    <melody>O kerstnacht schoner dan de dagen</melody>
  <author>Pieter Dubbels</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">AMintas dreef zijn <rhyme label="a" type="f">klavergasjes</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Langs Amstels glaze <rhyme label="a" type="f" corresp="#s1:l1">waterplasjes</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Daar hij Korinne slapen <rhyme label="b" type="m">vont</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die wijl haar beesjens klaver <rhyme label="c" type="f">snoeiden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">De gronttogt van haar hertje <rhyme label="c" type="f" corresp="#s1:l4">sproeiden</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Op d'oever van haar lieve <rhyme label="b" type="m" corresp="#s1:l3">mont</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O kusjes! 'k voel mijn lusjes <rhyme label="a" type="f">gragen</rhyme>:</l>
        <l id="s2:l2" met="4" type="-+">Amintas! voel mijn Hartje <rhyme label="a" type="f" corresp="#s2:l1">jagen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">O Min! ô Min! ô Min! hoe <rhyme label="b" type="m">prikt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hoe prikkelt gij mijn jonge <rhyme label="c" type="f">zinnen</rhyme>?</l>
        <l id="s2:l5" met="4" type="-+">Amint! ik sweere u trouw te <rhyme label="c" type="f" corresp="#s2:l4">minnen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Tot Atrop' d'Egte strik <rhyme label="b" type="m" corresp="#s2:l3">ontstrikt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Amint liet zijn getergde <rhyme label="a" type="f">lippen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">In haar ontregen boezem <rhyme label="a" type="f" corresp="#s3:l1">glippen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het jagen van haar slinkker <rhyme label="b" type="m">borst</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Het trillen van haar teere <rhyme label="c" type="f">schonkjes</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Getuygden d'innerlijke <rhyme label="c" type="f" corresp="#s3:l4">vonkjes</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Goon! (riep Amintas,) die nu <rhyme label="b" type="m" corresp="#s3:l3">dorst</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
