      </coordinates>
    </location>
    <tags/>
    <melody>Ik ben een arme pelgrim hier</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Koninghinne <rhyme label="a" type="m">vroet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghegroet zijt en <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Moeder bermhertigh <rhyme label="a" type="m" corresp="#s1:l1">soet</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Ootmoedich <rhyme label="b" type="f" corresp="#s1:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ons leuen, <rhyme label="a" type="m">soeticheyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gheseyt met de <rhyme label="b" type="f">waerhede</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ons hope, die ons <rhyme label="a" type="m" corresp="#s2:l1">greyt</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Ghegroet vol <rhyme label="b" type="f" corresp="#s2:l2">vrede</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wy roepen nu tot <rhyme label="a" type="m">dy</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wy kinderen van <rhyme label="b" type="f">Eua</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En ballinghen <rhyme label="a" type="m" corresp="#s3:l1">onvrij</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Hoort ons <rhyme label="b" type="f" corresp="#s3:l2">Maria</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Tot v breet ende <rhyme label="a" type="m">smal</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wy al suchten en <rhyme label="b" type="f">weenen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hier in dit <rhyme label="a" type="m" corresp="#s4:l1">tranen-dal</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Wilt troost <rhyme label="b" type="f" corresp="#s4:l2">verleenen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Onse voorsprake <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wel aen, u ooghskens <rhyme label="b" type="f">teeren</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Wilt tot ons (die sulck <rhyme label="a" type="m" corresp="#s5:l1">kan</rhyme>)</l>
        <l id="s5:l4" met="2" type="-+">Bermhertich <rhyme label="b" type="f" corresp="#s5:l2">keeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ende dijns lichaems <rhyme label="a" type="m">vrucht</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Iesum Christum wilt <rhyme label="b" type="f">tooghen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ons, nae dit swaer <rhyme label="a" type="m" corresp="#s6:l1">versucht</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">En s’doodts <rhyme label="b" type="f" corresp="#s6:l2">ghedooghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O saechtmoedichst’ <rhyme label="a" type="m">eenpaer</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Voorwaer goet en <rhyme label="b" type="f">idoone</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">O ghenadichst’ <rhyme label="a" type="m" corresp="#s7:l1">eerbaer</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Maria <rhyme label="b" type="f" corresp="#s7:l2">schoone</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Bidt dat wy weerdich <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">(O Moeder Godts <rhyme label="b" type="f">beseuen</rhyme>)</l>
        <l id="s8:l3" met="3" type="-+">Der beloften <rhyme label="a" type="m" corresp="#s8:l1">divijn</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Christi <rhyme label="b" type="f" corresp="#s8:l2">verheuen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Verkert ons druck in <rhyme label="a" type="m">vreucht</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Iont deucht en peys <rhyme label="b" type="f">eendrachtich</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Want ghy vele <rhyme label="a" type="m" corresp="#s9:l1">vermeucht</rhyme></l>
        <l id="s9:l4" met="2" type="-+">By Godt <rhyme label="b" type="f" corresp="#s9:l2">almachtich</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
