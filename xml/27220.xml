    <melody>Ik lijd in het hart pijn ongewoon</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ick ben vol droefheyt nacht en <rhyme label="a" type="m">dach</rhyme></l>
        <l id="s1:l2" met="4" type="-+">om een Ionckurouwe / &lt;+in&gt; dees <rhyme label="b" type="f">lansdouwe</rhyme></l>
        <l id="s1:l3" met="4" type="-+">dat comt door haer schoon <rhyme label="a" type="m" corresp="#s1:l1">ooch-opslach</rhyme></l>
        <l id="s1:l4" met="4" type="-+">als ick aenschouwe / dees reyn <rhyme label="b" type="f" corresp="#s1:l2">kersouwe</rhyme></l>
        <l id="s1:l5" met="5" type="-+">myn hert is my doorwont om haer <rhyme label="c" type="f">persoone</rhyme></l>
        <l id="s1:l6" met="3" type="-+">veel deuchtsaemheyt <rhyme label="d" type="m">beleeft</rhyme></l>
        <l id="s1:l7" met="3" type="-+">dees maecht ontfanghen <rhyme label="d" type="m" corresp="#s1:l6">heeft</rhyme></l>
        <l id="s1:l8" met="2" type="-+">wt tshemels <rhyme label="c" type="f" corresp="#s1:l5">throone</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Kende sy wel myn liefd <rhyme label="a" type="m">oprecht</rhyme></l>
        <l id="s2:l2" met="4" type="-+">die Ick haer draghe / tot alle <rhyme label="b" type="f">daghe</rhyme></l>
        <l id="s2:l3" met="4" type="-+">sy sou my als dienstwillich <rhyme label="a" type="m" corresp="#s2:l1">knecht</rhyme></l>
        <l id="s2:l4" met="4" type="-+">sonder versaghen / door myn <rhyme label="b" type="f" corresp="#s2:l2">behaghen</rhyme></l>
        <l id="s2:l5" met="5" type="-+">haer lieflyck wesen soet maeckt my vol <rhyme label="c" type="f">vreuchden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">dees Ionckurou <rhyme label="d" type="m">goedertier</rhyme></l>
        <l id="s2:l7" met="3" type="-+">is myn hert een <rhyme label="d" type="m" corresp="#s2:l6">plaisier</rhyme></l>
        <l id="s2:l8" met="2" type="-+">in eer en <rhyme label="c" type="f" corresp="#s2:l5">deuchtden</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een blomken is sy <rhyme label="a" type="m">delicaet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">seer net besneden / vol <rhyme label="b" type="f">eerbaerheeden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">ghelyck den schoonen <rhyme label="a" type="m" corresp="#s3:l1">dagheraet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">die met claerheden / schynt hier <rhyme label="b" type="f" corresp="#s3:l2">beneden</rhyme></l>
        <l id="s3:l5" met="5" type="-+">sy is my een trisoor / vool van <rhyme label="c" type="f">sucaden</rhyme></l>
        <l id="s3:l6" met="3" type="-+">wou dit maechdelyck <rhyme label="d" type="m">graen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">my als dienaer <rhyme label="d" type="m" corresp="#s3:l6">ontfaen</rhyme></l>
        <l id="s3:l8" met="2" type="-+">tsou haer niet <rhyme label="c" type="f" corresp="#s3:l5">schaden</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Neemt dit in danck princeslyck <rhyme label="a" type="m">greyn</rhyme></l>
        <l id="s4:l2" met="4" type="-+">meerckt of myn schryuen / moet by u <rhyme label="b" type="f">blyuen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">want ghy syt die Ick int hert <rhyme label="a" type="m" corresp="#s4:l1">meyn</rhyme></l>
        <l id="s4:l4" met="4" type="-+">wilt druck verdryuen / laet troost <rhyme label="b" type="f" corresp="#s4:l2">beclyuen</rhyme></l>
        <l id="s4:l5" met="5" type="-+">ghestadicheit verwint in liefden <rhyme label="c" type="f">gloedich</rhyme></l>
        <l id="s4:l6" met="3" type="-+">och liefste <rhyme label="d" type="m">onbesmet</rhyme></l>
        <l id="s4:l7" met="3" type="-+">verhoort ees myn <rhyme label="d" type="m" corresp="#s4:l6">ghebet</rhyme></l>
        <l id="s4:l8" met="2" type="-+">thoont een hert <rhyme label="c" type="f" corresp="#s4:l5">goedich</rhyme></l>
      </lg>
    </lg>
  </text>
