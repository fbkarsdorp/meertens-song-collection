  <author>Jacobus de Ruyter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">KOmt vrienden u <rhyme label="a" type="m">bereydt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Om dese klucht t' <rhyme label="b" type="f">aenhooren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">verloren <rhyme label="a" type="m" corresp="#s1:l1">arbeyt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Waer het hier in te <rhyme label="b" type="f" corresp="#s1:l2">stooren</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Van die gaen <rhyme label="c" type="f">spreken</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met eenen dooden <rhyme label="d" type="m">Mensch</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Den blinden te <rhyme label="c" type="f" corresp="#s1:l5">versteken</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">oft gheven eenen <rhyme label="d" type="m" corresp="#s1:l6">wensch</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Vyt eenen ydel <rhyme label="a" type="m">pot</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Teeten oft <rhyme label="b" type="f">drincken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Of te houden den <rhyme label="a" type="m" corresp="#s2:l1">sot</rhyme></l>
        <l id="s2:l4" met="3" type="-+">met Heeren wilt <rhyme label="b" type="f" corresp="#s2:l2">gedincken</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Oft zaet te <rhyme label="c" type="f">storten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In 't miden van <rhyme label="d" type="m">zee</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Een langhen Man te <rhyme label="c" type="f" corresp="#s2:l5">korten</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Is al verloren <rhyme label="d" type="m" corresp="#s2:l6">mee</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy sult oock zijn <rhyme label="a" type="m">ghemist</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Veel winden te <rhyme label="b" type="f">vergaeren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En sluyten in een <rhyme label="a" type="m" corresp="#s3:l1">kist</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Van 't water telt de <rhyme label="b" type="f" corresp="#s3:l2">baeren</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Den kaelen <rhyme label="c" type="f">scheren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In een bos vanghen <rhyme label="d" type="m">vis</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En wilt die niet <rhyme label="c" type="f" corresp="#s3:l5">begeiren</rhyme></l>
        <l id="s3:l8" met="3" type="-+">weet het al verloren <rhyme label="d" type="m" corresp="#s3:l6">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Te leeren een sot <rhyme label="a" type="m">wijs</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">g' En meught dat niet <rhyme label="b" type="f">beloven</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Of te gaen drooghen <rhyme label="a" type="m" corresp="#s4:l1">ys</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In eenen heeten <rhyme label="b" type="f" corresp="#s4:l2">oven</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Een moor te <rhyme label="c" type="f">wassen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">te melcken eenen <rhyme label="d" type="m">bock</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Of te gaen branden <rhyme label="c" type="f" corresp="#s4:l5">asschen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Smout te braden uyt den <rhyme label="d" type="m" corresp="#s4:l6">stock</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">T'is al om niet <rhyme label="a" type="m">ghedaen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Een oudt wijf te <rhyme label="b" type="f">bedwinghen</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Tot dassen oft te <rhyme label="a" type="m" corresp="#s5:l1">gaen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">een stommen te doen <rhyme label="b" type="f" corresp="#s5:l2">singhen</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Een <rhyme label="c" type="f">kabeltauw</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Te trecken door een <rhyme label="d" type="m">naelt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Of van zanden bier te <rhyme label="c" type="f" corresp="#s5:l5">brouwen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Ghy soudt wel zijn <rhyme label="d" type="m" corresp="#s5:l6">ghefaelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Verloren <rhyme label="a" type="m">arbeyt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Te soecken rechte <rhyme label="b" type="f">vrienden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Een groot <rhyme label="a" type="m" corresp="#s6:l1">soberheyt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">In eenen dronckaert <rhyme label="b" type="f" corresp="#s6:l2">vinden</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Wijsheyt in <rhyme label="c" type="f">dwase</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">niet Trommelen en <rhyme label="d" type="m">meught</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Om te vanghen een <rhyme label="c" type="f" corresp="#s6:l5">haese</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Soeckt in quaet gheselschap <rhyme label="d" type="m" corresp="#s6:l6">deught</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Soeckt wijn in een vis <rhyme label="a" type="m">net</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Peerden en Oyvaers <rhyme label="b" type="f">nesten</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">'t Ghelt een verquister <rhyme label="a" type="m" corresp="#s7:l1">het</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hy geeft het ten <rhyme label="b" type="f" corresp="#s7:l2">besten</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">In een <rhyme label="c" type="f">gheveijnsen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Soeckt de <rhyme label="d" type="m">waerachtigheyt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dat en moet gy niet <rhyme label="c" type="f" corresp="#s7:l5">peijsen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">t' is verloren <rhyme label="d" type="m" corresp="#s7:l6">arbeyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die soecken een vet <rhyme label="a" type="m">swijn</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En gaet niet by de <rhyme label="b" type="f">Ioden</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Om dat 'er daer veel <rhyme label="a" type="m" corresp="#s8:l1">zijn</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">doch sy zijn hun <rhyme label="b" type="f" corresp="#s8:l2">verboden</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Want 't is <rhyme label="c" type="f">bemerckens</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Godt ded' eens den duyvel <rhyme label="d" type="m">gaen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">In altemael de <rhyme label="c" type="f" corresp="#s8:l5">verkens</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">daer af zijn sy noch <rhyme label="d" type="m" corresp="#s8:l6">belaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Al wie soeckt groot <rhyme label="a" type="m">verstant</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Die gaet by vette <rhyme label="b" type="f">buycken</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">wie'er oyt drincken <rhyme label="a" type="m" corresp="#s9:l1">vant</rhyme></l>
        <l id="s9:l4" met="3" type="-+">In ijdel pot of <rhyme label="b" type="f" corresp="#s9:l2">kruycken</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Nu gaen ick <rhyme label="c" type="f">singhen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Van al het profijtigh <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En noch meerder vremde <rhyme label="c" type="f" corresp="#s9:l5">dinghen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Die men hier noch weten <rhyme label="d" type="m" corresp="#s9:l6">moet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dienstigh in 't huys om <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Eenen ontrouwen <rhyme label="b" type="f">dienaer</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Hier by luye <rhyme label="a" type="m" corresp="#s10:l1">wercklien</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Een seugh die is <rhyme label="b" type="f" corresp="#s10:l2">onvruchtbaer</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Een Maert <rhyme label="c" type="f">t'houden</rhyme></l>
        <l id="s10:l6" met="3" type="-+">die dickwijls is <rhyme label="d" type="m">bevrucht</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Als med' een siecke <rhyme label="c" type="f" corresp="#s10:l5">Vrouwe</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">die by na altijt <rhyme label="d" type="m" corresp="#s10:l6">sucht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Al meer profijtigh <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Een Vrouw die achter uyt <rhyme label="b" type="f">slaet</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Een kat die vluchten <rhyme label="a" type="m" corresp="#s11:l1">moet</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Van die Muysen is oock <rhyme label="b" type="f" corresp="#s11:l2">quaet</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">s' Hebben een <rhyme label="c" type="f">beurse</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Die altijdt ijdel <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Men geeft fraey voor de <rhyme label="c" type="f" corresp="#s11:l5">Neuse</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Ghebraden vlees en <rhyme label="d" type="m" corresp="#s11:l6">vis</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">T'is oock seer <rhyme label="a" type="m">aenghenaem</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">'t Gen' ick u hier wil <rhyme label="b" type="f">leeren</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Van dinghen die te <rhyme label="a" type="m" corresp="#s12:l1">saem</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Altijdt wel <rhyme label="b" type="f" corresp="#s12:l2">accorderen</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Een borse <rhyme label="c" type="f">snijder</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Met eenen sack vol <rhyme label="d" type="m">ghelt</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">En eenen goeden <rhyme label="c" type="f" corresp="#s12:l5">rijder</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">op een schoon peert <rhyme label="d" type="m" corresp="#s12:l6">gestelt</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Dit accordeert te <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Een Meulder en een <rhyme label="b" type="f">Esel</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">in de kerck een <rhyme label="a" type="m" corresp="#s13:l1">plaet</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">En daer by eene <rhyme label="b" type="f" corresp="#s13:l2">Quesel</rhyme>,</l>
        <l id="s13:l5" met="2" type="-+">Een goet <rhyme label="c" type="f">gheselschap</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Daer by de <rhyme label="d" type="m">vrolijckheyt</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">eenen monick en zijn <rhyme label="c" type="f" corresp="#s13:l5">kap</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Dit is tot de vreught <rhyme label="d" type="m" corresp="#s13:l6">bereyt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Dit komt oock over <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Eenen dief en het <rhyme label="b" type="f">worghen</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Een vrouw met kinders <rhyme label="a" type="m" corresp="#s14:l1">kleen</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Eenen Weert niet te <rhyme label="b" type="f" corresp="#s14:l2">borghen</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">Een kruyck en 't <rhyme label="c" type="f">water</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">een maerte die wijn <rhyme label="d" type="m">haelt</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Een Celle met een <rhyme label="c" type="f" corresp="#s14:l5">Pater</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">En een die wijn <rhyme label="d" type="m" corresp="#s14:l6">betaelt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">T'is goedt en 't <rhyme label="a" type="m">accordeert</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Den Man de Vrouw te <rhyme label="b" type="f">soecken</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Een Advocaet <rhyme label="a" type="m" corresp="#s15:l1">geleert</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">den Clerck en zijn <rhyme label="b" type="f" corresp="#s15:l2">Boecken</rhyme>,</l>
        <l id="s15:l5" met="2" type="-+">'t Honerigh <rhyme label="c" type="f">vercken</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Aen een Menichen <rhyme label="d" type="m">dreck</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">De Priesters in de <rhyme label="c" type="f" corresp="#s15:l5">Kercke</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">te lijden Broot <rhyme label="d" type="m" corresp="#s15:l6">gebreck</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Oorlof Vrienden met <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Wilt dit niet <rhyme label="b" type="f">blameren</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">'t Dient voor al die zijn <rhyme label="a" type="m" corresp="#s16:l1">slecht</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Om wijsheyt uyt te <rhyme label="b" type="f" corresp="#s16:l2">leeren</rhyme>,</l>
        <l id="s16:l5" met="2" type="-+">En <rhyme label="c" type="f">t'onderscheyden</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Het profijtigh goedt en 't <rhyme label="d" type="m">quaet</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">En by den neus <rhyme label="c" type="f" corresp="#s16:l5">leyden</rhyme>,</l>
        <l id="s16:l8" met="3" type="-+">Al die niet recht en <rhyme label="d" type="m" corresp="#s16:l6">gaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
