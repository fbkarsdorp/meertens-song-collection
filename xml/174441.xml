  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Bevlyticht Mensch u <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s1:l2" met="5" type="+-">want t sondich vleesch In voortyden <rhyme label="b" type="f">ontfangen</rhyme></l>
        <l id="s1:l3" met="3" type="+-">wert van Boosheijt <rhyme label="a" type="f" corresp="#s1:l1">gedreven</rhyme></l>
        <l id="s1:l4" met="5" type="+-">door d'eerste mensch die zulcx heeft <rhyme label="b" type="f" corresp="#s1:l2">aengehangen</rhyme></l>
        <l id="s1:l5" met="2" type="+-">om werelts <rhyme label="c" type="m">lust</rhyme></l>
        <l id="s1:l6" met="2" type="+-">die zonder <rhyme label="c" type="m" corresp="#s1:l5">rust</rhyme></l>
        <l id="s1:l7" met="3" type="+-">steets loopt vol twisten <rhyme label="d" type="f">lyden</rhyme></l>
        <l id="s1:l8" met="2" type="+-">wast aff dees <rhyme label="e" type="f">vlecken</rhyme></l>
        <l id="s1:l9" met="3" type="+-">laet t'nieu Jaer u <rhyme label="e" type="f" corresp="#s1:l8">verwecken</rhyme></l>
        <l id="s1:l10" met="2" type="+-">tot <rhyme label="d" type="f" corresp="#s1:l7">verblijden</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Dies wilt samen <rhyme label="a" type="f">aenvaerden</rhyme></l>
        <l id="s2:l2" met="5" type="+-">tgeen was geseyt door godt en zyn <rhyme label="b" type="f">propheten</rhyme></l>
        <l id="s2:l3" met="3" type="+-">te senden hier op <rhyme label="a" type="f" corresp="#s2:l1">aerden</rhyme></l>
        <l id="s2:l4" met="5" type="+-">daer ons bederff zou werden van <rhyme label="b" type="f" corresp="#s2:l2">verbeten</rhyme></l>
        <l id="s2:l5" met="2" type="+-">den tyt <rhyme label="c" type="m">vervult</rhyme></l>
        <l id="s2:l6" met="2" type="+-">nam hy de <rhyme label="c" type="m" corresp="#s2:l5">schult</rhyme></l>
        <l id="s2:l7" met="3" type="+-">op hem, door lieffd' <rhyme label="d" type="f">genegen</rhyme></l>
        <l id="s2:l8" met="2" type="+-">wilt zyn woort <rhyme label="e" type="f">achten</rhyme></l>
        <l id="s2:l9" met="3" type="+-">en Int nieuwe Jaer <rhyme label="e" type="f" corresp="#s2:l8">verwachten</rhyme></l>
        <l id="s2:l10" met="2" type="+-">zijnen <rhyme label="d" type="f" corresp="#s2:l7">zegen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Gedenckt doe In dien <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s3:l2" met="5" type="+-">den bloedigen tempel toe was <rhyme label="b" type="f">gesloten</rhyme></l>
        <l id="s3:l3" met="3" type="+-">en oorloochs wrede <rhyme label="a" type="f" corresp="#s3:l1">slagen</rhyme></l>
        <l id="s3:l4" met="5" type="+-">met vrede geheel waren uijt <rhyme label="b" type="f" corresp="#s3:l2">gesloten</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Augusti <rhyme label="c" type="m">hant</rhyme></l>
        <l id="s3:l6" met="2" type="+-">deed 't kenbaar <rhyme label="c" type="m" corresp="#s3:l5">lant</rhyme></l>
        <l id="s3:l7" met="3" type="+-">des werelts gantsch <rhyme label="d" type="f">beschrijven</rhyme></l>
        <l id="s3:l8" met="2" type="+-">om ons <rhyme label="e" type="f">verschoonen</rhyme></l>
        <l id="s3:l9" met="3" type="+-">quam den vrede vorst <rhyme label="e" type="f" corresp="#s3:l8">tonen</rhyme></l>
        <l id="s3:l10" met="2" type="+-">zyn <rhyme label="d" type="f" corresp="#s3:l7">bedrijven</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">hier door wilt tot godt <rhyme label="a" type="f">keeren</rhyme></l>
        <l id="s4:l2" met="5" type="+-">die van hem als zyn leden zijt <rhyme label="b" type="f">verkoren</rhyme></l>
        <l id="s4:l3" met="3" type="+-">op dat hier mocht <rhyme label="a" type="f" corresp="#s4:l1">verneren</rhyme></l>
        <l id="s4:l4" met="5" type="+-">alle twist, als doen hy werde <rhyme label="b" type="f" corresp="#s4:l2">geboren</rhyme></l>
        <l id="s4:l5" met="2" type="+-">In <rhyme label="c" type="m">bethlehem</rhyme></l>
        <l id="s4:l6" met="2" type="+-">daer hij zijn <rhyme label="c" type="m" corresp="#s4:l5">stem</rhyme></l>
        <l id="s4:l7" met="3" type="+-">tot salicheyt liet <rhyme label="d" type="f">blycken</rhyme></l>
        <l id="s4:l8" met="2" type="+-">bracht eewich <rhyme label="e" type="f">vrede</rhyme></l>
        <l id="s4:l9" met="3" type="+-">door zijn godlicke <rhyme label="e" type="f" corresp="#s4:l8">zede</rhyme>,</l>
        <l id="s4:l10" met="2" type="+-">In dees <rhyme label="d" type="f" corresp="#s4:l7">rycken</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Singht desen prins zyn <rhyme label="a" type="f">Daden</rhyme></l>
        <l id="s5:l2" met="5" type="+-">die ons heeft gebracht uijt t'ewich <rhyme label="b" type="f">bederven</rhyme></l>
        <l id="s5:l3" met="3" type="+-">en dat hy door <rhyme label="a" type="f" corresp="#s5:l1">genaden</rhyme></l>
        <l id="s5:l4" met="5" type="+-">de wysheyt In onsen raet nyet laet <rhyme label="b" type="f" corresp="#s5:l2">sterven</rhyme></l>
        <l id="s5:l5" met="2" type="+-">want hij <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s5:l6" met="2" type="+-">can het <rhyme label="c" type="m" corresp="#s5:l5">geween</rhyme></l>
        <l id="s5:l7" met="3" type="+-">bevrijen, en doe <rhyme label="d" type="f">scheyden</rhyme></l>
        <l id="s5:l8" met="2" type="+-">wilt zijn lieffd' <rhyme label="e" type="f">prysen</rhyme></l>
        <l id="s5:l9" met="3" type="+-">tis t'fondament der <rhyme label="e" type="f" corresp="#s5:l8">wysen</rhyme></l>
        <l id="s5:l10" met="2" type="+-">te <rhyme label="d" type="f" corresp="#s5:l7">verbeyden</rhyme>,</l>
      </lg>
    </lg>
  </text>
