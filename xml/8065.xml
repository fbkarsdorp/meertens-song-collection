    <melody>O mens aanhoor des Heren woord</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">FOnteyne soet // alleyne <rhyme label="a" type="m">goedt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Om ons te wasschen <rhyme label="b" type="f">schoone</rhyme></l>
        <l id="s1:l3" met="4" type="-+">In Christus bloet // waer door men <rhyme label="a" type="m" corresp="#s1:l1">moet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Worden volmaeckt <rhyme label="b" type="f" corresp="#s1:l2">ydoone</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Al die sondigh <rhyme label="c" type="m">belaen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Haer in dit water <rhyme label="c" type="m" corresp="#s1:l5">baen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Sullen reyn worden <rhyme label="c" type="m" corresp="#s1:l5">saen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Dus komen wy <rhyme label="d" type="f">ghestadigh</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Tot u, wilt ons <rhyme label="c" type="m" corresp="#s1:l5">ontfaen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Want ghy zijt seer <rhyme label="d" type="f" corresp="#s1:l8">ghenadigh</rhyme>,</l>
        <l id="s1:l11" met="4" type="-+">Een klaer Fonteyn, zijt ghy <rhyme label="e" type="m">alleyn</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">Levendigh water fijn // als <rhyme label="f" type="m">wijn</rhyme>,</l>
        <l id="s1:l13" met="4" type="-+">Die 'therte reyn // verheught <rhyme label="e" type="m" corresp="#s1:l11">certeyn</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">End' oprecht <rhyme label="f" type="m" corresp="#s1:l12">Medecijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dit water klaer, is <rhyme label="a" type="m">openbaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ghepresenteert te <rhyme label="b" type="f">drincken</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Al die daer naer // dorsten <rhyme label="a" type="m" corresp="#s2:l1">voorwaer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Om niet wil hy dat <rhyme label="b" type="f" corresp="#s2:l2">schincken</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Al die komen tot <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In 't nieu <rhyme label="c" type="m" corresp="#s2:l5">Ierusalem</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hoorende na sijn <rhyme label="c" type="m" corresp="#s2:l5">stem</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">End' haer selven <rhyme label="d" type="f">versaken</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Sullen als Schaepkens <rhyme label="c" type="m" corresp="#s2:l5">tem</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Van dien goeden dranck <rhyme label="d" type="f" corresp="#s2:l8">smaken</rhyme>,</l>
        <l id="s2:l11" met="4" type="-+">In eeuwigheydt // werdt haer <rhyme label="e" type="m">bereydt</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">Te zijn in zijne vreught // <rhyme label="f" type="m">verheught</rhyme>,</l>
        <l id="s2:l13" met="4" type="-+">Dit al voorseyt // met goet <rhyme label="e" type="m" corresp="#s2:l11">bescheyt</rhyme>,</l>
        <l id="s2:l14" met="3" type="-+">Doet ons dit water <rhyme label="f" type="m" corresp="#s2:l12">deught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer Israel // verliet <rhyme label="a" type="m">rebel</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die goede water <rhyme label="b" type="f">ader</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En graefden snel // vuyl putten <rhyme label="a" type="m" corresp="#s3:l1">fel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Waterloos <rhyme label="b" type="f" corresp="#s3:l2">allegader</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Veel vreemde vonden <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ghebruyckt op dit <rhyme label="c" type="m" corresp="#s3:l5">termijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Buyten Christum <rhyme label="c" type="m" corresp="#s3:l5">divijn</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Om salighheydt <rhyme label="d" type="f">verwerven</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Maer eylaes Godts <rhyme label="c" type="m" corresp="#s3:l5">aenschijn</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Sullen sy moeten <rhyme label="d" type="f" corresp="#s3:l8">derven</rhyme>,</l>
        <l id="s3:l11" met="4" type="-+">Want alle die, <rhyme label="e" type="m">afgoderye</rhyme></l>
        <l id="s3:l12" met="4" type="-+">End' sulcke sonden doen, seer <rhyme label="f" type="m">koen</rhyme></l>
        <l id="s3:l13" met="4" type="-+">Godts heerschappije, sal straffen <rhyme label="e" type="m" corresp="#s3:l11">wie</rhyme></l>
        <l id="s3:l14" met="3" type="-+">Sy zijn, naer dit <rhyme label="f" type="m" corresp="#s3:l12">saysoen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Gods straffe sal // die sondaer <rhyme label="a" type="m">al</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Treffen, end' niemandt <rhyme label="b" type="f">sparen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Op den wegh smal // sonder <rhyme label="a" type="m" corresp="#s4:l1">afval</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wilt ons o Heer <rhyme label="b" type="f" corresp="#s4:l2">bewaren</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Laeft ons met des gheests <rhyme label="c" type="m">dranck</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Want wy inwendigh <rhyme label="c" type="m" corresp="#s4:l5">kranck</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Moeten ons leven <rhyme label="c" type="m" corresp="#s4:l5">langh</rhyme></l>
        <l id="s4:l8" met="3" type="-+">V hulpe zijn <rhyme label="d" type="f">deelachtigh</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">Om gaen den rechten <rhyme label="c" type="m" corresp="#s4:l5">ganck</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Anders sijn wy niet <rhyme label="d" type="f" corresp="#s4:l8">machtigh</rhyme>,</l>
        <l id="s4:l11" met="4" type="-+">Wat ons gheschiet // verlaet ons <rhyme label="e" type="m">niet</rhyme>,</l>
        <l id="s4:l12" met="4" type="-+">Hier nu noch nemmermeer, o <rhyme label="f" type="m">Heer</rhyme>,</l>
        <l id="s4:l13" met="4" type="-+">Als ghy ons siet // in swaer <rhyme label="e" type="m" corresp="#s4:l11">verdriet</rhyme>,</l>
        <l id="s4:l14" met="3" type="-+">Draecht onse swackheydt <rhyme label="f" type="m" corresp="#s4:l12">teer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Prince ghy zijt, tot aller <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die ons helpt 'tveldt <rhyme label="b" type="f">behouden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ghy voor ons strijt // als wy met <rhyme label="a" type="m" corresp="#s5:l1">vlijt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Vyerigh sonder <rhyme label="b" type="f" corresp="#s5:l2">vercouden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Vrymoedigh blijven <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Sonder u af te <rhyme label="c" type="m" corresp="#s5:l5">gaen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Met 'tharnasch <rhyme label="c" type="m" corresp="#s5:l5">aenghedaen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Bereydt om kloeck te <rhyme label="d" type="f">vechten</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">Doende na u <rhyme label="c" type="m" corresp="#s5:l5">vermaen</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Als goe getrouwe <rhyme label="d" type="f" corresp="#s5:l8">knechten</rhyme>:</l>
        <l id="s5:l11" met="4" type="-+">O Prince Godt, ick bidt in <rhyme label="e" type="m">'tslot</rhyme>,</l>
        <l id="s5:l12" met="4" type="-+">Mijn gebedt doch verhoort en <rhyme label="f" type="m">voort</rhyme></l>
        <l id="s5:l13" met="4" type="-+">Nae u ghebodt // leyt ons recht <rhyme label="e" type="m" corresp="#s5:l11">tot</rhyme></l>
        <l id="s5:l14" met="3" type="-+">'Slevens fonteyn <rhyme label="f" type="m" corresp="#s5:l12">accoort</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
