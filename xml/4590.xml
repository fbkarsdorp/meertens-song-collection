  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ONgehoorde <rhyme label="a" type="f">Broeders-proven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hoewe fijnen, hoewe <rhyme label="a" type="f" corresp="#s1:l1">groven</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Hoewe mallen, Gods <rhyme label="b" type="m">verzoen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Blijft in ons al even <rhyme label="b" type="m" corresp="#s1:l3">groen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Geen octroy van meerder <rhyme label="a" type="f">gracy</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Dan die ons de <rhyme label="a" type="f" corresp="#s2:l1">Reformacy</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Heeft verkregen, ’t mag geen <rhyme label="b" type="m">quaed</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Als ’t Geloof maar stijf en <rhyme label="b" type="m" corresp="#s2:l3">staet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maer geloof, dat ik <rhyme label="a" type="f">verkoren</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Voor al eer ik was <rhyme label="a" type="f" corresp="#s3:l1">geboren</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Ben van Christo totte <rhyme label="b" type="m">kroon</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Van een opgenome <rhyme label="b" type="m" corresp="#s3:l3">Zoon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dat hy my ter zelver <rhyme label="a" type="f">stonden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Heeft vergeven al mijn <rhyme label="a" type="f" corresp="#s4:l1">zonden</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Schoon in mijn de boosheid <rhyme label="b" type="m">bleef</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Als hy my zijn deugd toe <rhyme label="b" type="m" corresp="#s4:l3">schreef</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">En dit buiten alle <rhyme label="a" type="f">twijfel</rhyme>.</l>
        <l id="s5:l2" met="4" type="+-">Zoo zeer dat my deze <rhyme label="a" type="f" corresp="#s5:l1">Rijfel</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Door geen zond’, of nu, of <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Jmmermeer ontdrayen <rhyme label="b" type="m" corresp="#s5:l3">kan</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als ik dit maer blijf <rhyme label="a" type="f">geloven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Kan mijn ziel niet zijn <rhyme label="a" type="f" corresp="#s6:l1">verschoven</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Vallen magze, weer en <rhyme label="b" type="m">weer</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">Maar vervallen <rhyme label="b" type="m" corresp="#s6:l3">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dit’s den bloesem, dit’s de <rhyme label="a" type="f">Lely</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Van’t Geneefse <rhyme label="a" type="f" corresp="#s7:l1">Euangely</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">Ziet en zegt nu aende <rhyme label="b" type="m">tucht</rhyme>;</l>
        <l id="s7:l4" met="4" type="+-">Zulken bloesem, zulken <rhyme label="b" type="m" corresp="#s7:l3">vrucht</rhyme>.</l>
      </lg>
    </lg>
  </text>
