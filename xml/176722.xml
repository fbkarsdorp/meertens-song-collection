    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Versteende Menschen die <rhyme label="a" type="m">verstrickt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Leght aen u eyghen wil <rhyme label="b" type="f">ghebonden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die ‘t Godtlijck licht in d’ooghen <rhyme label="a" type="m" corresp="#s1:l1">blickt</rhyme></l>
        <l id="s1:l4" met="4" type="-+">En noodt tot af-standt van de <rhyme label="b" type="f" corresp="#s1:l2">zonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wilt ghy door dreygen noch ‘t <rhyme label="a" type="m">vermaen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Des Heeren u niet laten <rhyme label="b" type="f">trecken</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Soo heft u ooghen op, siet <rhyme label="a" type="m" corresp="#s2:l1">aen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Laet u tot me-lijden <rhyme label="b" type="f" corresp="#s2:l2">verwecken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Aenschout het smertigh lijden, <rhyme label="a" type="m">‘twelck</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Godts liefste Kindt om u most <rhyme label="b" type="f">smaecken</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Die alleen dronck dien bitteren <rhyme label="a" type="m" corresp="#s3:l1">Kelck</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Des doots, om u zaligh te <rhyme label="b" type="f" corresp="#s3:l2">maecken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ach! doen den Vorst der <rhyme label="a" type="m">Heerlijckheyt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Dit groot onweder sach <rhyme label="b" type="f">op-dringhen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat hem sijn Vader had <rhyme label="a" type="m" corresp="#s4:l1">bereyt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Quamt sijn ziele soo sterck <rhyme label="b" type="f" corresp="#s4:l2">bespringhen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dat hem het sweet, als drupp’len <rhyme label="a" type="m">bloet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Van sijn aenschijn droop op der <rhyme label="b" type="f">Aerden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En evenwel bleef sijn <rhyme label="a" type="m" corresp="#s5:l1">ghemoet</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Willigh bereyt, dien Kelck <rhyme label="b" type="f" corresp="#s5:l2">t’aenvaerden</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghelijck een Lam dat <rhyme label="a" type="m">stemmeloos</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Voor sijnen Scheerder heen gheleyt <rhyme label="b" type="f">wert</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dat alle hulp en troost <rhyme label="a" type="m" corresp="#s6:l1">verloos</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En tot een Soen-offer bereyt <rhyme label="b" type="f" corresp="#s6:l2">wert</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">So wiert de Soone Gods <rhyme label="a" type="m">verraen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Ghevanghen, en wel strengh <rhyme label="b" type="f">gebonden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Versaeckt, en alle smaet <rhyme label="a" type="m" corresp="#s7:l1">ghedaen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die sy (door haet) bedencken <rhyme label="b" type="f" corresp="#s7:l2">konden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sijn heyligh Lichaem (als <rhyme label="a" type="m">gherooft</rhyme>)</l>
        <l id="s8:l2" met="4" type="-+">Met diepe stramen wiert <rhyme label="b" type="f">door-slaghen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En sijn ghebenedijde <rhyme label="a" type="m" corresp="#s8:l1">Hooft</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Een Doorne Kroon ten loon most <rhyme label="b" type="f" corresp="#s8:l2">draghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Aldus ellendigh <rhyme label="a" type="m">toe-ghestelt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Brachten hem die Godtloose <rhyme label="b" type="f">knechten</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Buytenb Ierusalem in ‘t <rhyme label="a" type="m" corresp="#s9:l1">Veldt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Om hem aen ‘t Kruysse op te <rhyme label="b" type="f" corresp="#s9:l2">rechten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Daer wiert den Heer, die ‘t alles <rhyme label="a" type="m">schiep</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Door-naghelt aen handen en <rhyme label="b" type="f">voeten</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat hem sijn roode Bloedt <rhyme label="a" type="m" corresp="#s10:l1">ontliep</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Om onse schuldt voor Godt te <rhyme label="b" type="f" corresp="#s10:l2">boeten</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En hoewel hy hun niet <rhyme label="a" type="m">onthiel</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Van ‘t geen haer Zalighmaecken <rhyme label="b" type="f">konde</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Noch trachten sy sijn reyne <rhyme label="a" type="m" corresp="#s11:l1">Ziel</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Met laster-reen ter doodt te <rhyme label="b" type="f" corresp="#s11:l2">wonden</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Fy gy, hoe fijn breeckt hy Gots <rhyme label="a" type="m">Huys</rhyme></l>
        <l id="s12:l2" met="4" type="-+">En bouwt het we’er op in drie <rhyme label="b" type="f">daghen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Is hy Godts Soon, hy dael van ‘t <rhyme label="a" type="m" corresp="#s12:l1">Kruys</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">So sal sijn Leeringh ons <rhyme label="b" type="f" corresp="#s12:l2">behaghen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dees troost gaven de <rhyme label="a" type="m">Pharizeen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Hem in het uyterst van sijn <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">En noch heeft hy voor haer <rhyme label="a" type="m" corresp="#s13:l1">ghebe’en</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Ach! Vader wilt het hun <rhyme label="b" type="f" corresp="#s13:l2">vergheven</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Bedenckt die pijne over <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Aen plompe Naghels soo te <rhyme label="b" type="f">hanghen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Ten lesten noch den wreeden <rhyme label="a" type="m" corresp="#s14:l1">Doodt</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Voor al sijn weldaden <rhyme label="b" type="f" corresp="#s14:l2">t’ontfanghen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Ach! weenen noch u Ooghen <rhyme label="a" type="m">niet</rhyme>?</l>
        <l id="s15:l2" met="4" type="-+">Barst noch ui Hert niet door <rhyme label="b" type="f">medoghen</rhyme>?</l>
        <l id="s15:l3" met="4" type="-+">Daer selfs de Son viir dit <rhyme label="a" type="m" corresp="#s15:l1">verdriet</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Haer licht de Wereldt heeft <rhyme label="b" type="f" corresp="#s15:l2">ontoghen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Schoon als een Wurm van elk <rhyme label="a" type="m">vertreen</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Een Spot en verachtingh der <rhyme label="b" type="f">Lieden</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Heeft hy sijn lijden <rhyme label="a" type="m" corresp="#s16:l1">uyt-ghele’en</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Tot ‘t was volbragt ‘t geen most <rhyme label="b" type="f" corresp="#s16:l2">geschieden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">In ‘t midden van sijn grootste <rhyme label="a" type="m">smart</rhyme></l>
        <l id="s17:l2" met="4" type="-+">(Hoe seer sy hem oock <rhyme label="b" type="f">tormenteerden</rhyme>,)</l>
        <l id="s17:l3" met="4" type="-+">Brande soo sijn verliefde <rhyme label="a" type="m" corresp="#s17:l1">Hart</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Dat al des Duyvels macht <rhyme label="b" type="f" corresp="#s17:l2">verueerde</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Soo dat nu elckeen ‘t Heyligh <rhyme label="a" type="m">Choor</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Betreden mach, en Offer <rhyme label="b" type="f">pleghen</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Soo hy Godts stemme gheeft <rhyme label="a" type="m" corresp="#s18:l1">ghehoor</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">En blijft gheduyrigh op sijn <rhyme label="b" type="f" corresp="#s18:l2">weghen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Ghy dier ghekochte Christen <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Laet u dit door u Ziele <rhyme label="b" type="f">snijden</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Het Kruys, de smart en ‘t <rhyme label="a" type="m" corresp="#s19:l1">doodts-ghevaer</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Dat Christus om u moeste <rhyme label="b" type="f" corresp="#s19:l2">lijden</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">En volght soo sijn voetstappen <rhyme label="a" type="m">nae</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Ghelijck als hy u eerst <rhyme label="b" type="f">beminde</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">So sult ghy dan, door sijn <rhyme label="a" type="m" corresp="#s20:l1">ghenae</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">D’eeuwighe rust der Zielen <rhyme label="b" type="f" corresp="#s20:l2">vinde</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
