    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">geestelijk lied</tag>
    </tags>
    <melody>De winter is een onwaarde gast</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy die den ouden Adam <rhyme label="a" type="m">fel</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghehoorsaem zijt in <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Eer dat Godts toorne comt <rhyme label="a" type="m" corresp="#s1:l1">rebel</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Betert u <rhyme label="a" type="m" corresp="#s1:l1">snel</rhyme></l>
        <l id="s1:l5" met="5" type="+-">En wilt Gods woort doorgronden, t'allen <rhyme label="b" type="f" corresp="#s1:l2">stonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Leght af den ouden Adam <rhyme label="a" type="m">swaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met al zijn quade <rhyme label="b" type="f">seden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En doet den nieuwen aen seer <rhyme label="a" type="m" corresp="#s2:l1">claer</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Christum <rhyme label="a" type="m" corresp="#s2:l1">eerbaer</rhyme>,</l>
        <l id="s2:l5" met="5" type="+-">Op dat ghy komt in vreden // met sijn <rhyme label="b" type="f" corresp="#s2:l2">leden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Niemandt en mach twee Heeren <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dienen, 'tis claer <rhyme label="b" type="f">beschreven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wie de sonde valt in den <rhyme label="a" type="m" corresp="#s3:l1">schoot</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Dat is de <rhyme label="a" type="m" corresp="#s3:l1">doodt</rhyme>,</l>
        <l id="s3:l5" met="5" type="+-">Maer 'tgoedt doen sonder sneven // is het <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Laet de sonde als haet en <rhyme label="a" type="m">nijt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">V vleesch niet meer <rhyme label="b" type="f">be-erven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maeckt u van alle boosheydt <rhyme label="a" type="m" corresp="#s4:l1">quijt</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">'Tis meer dan <rhyme label="a" type="m" corresp="#s4:l1">tijdt</rhyme>,</l>
        <l id="s4:l5" met="5" type="+-">Laetse in u versterven, en <rhyme label="b" type="f" corresp="#s4:l2">bederven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghelijck dat ghy der sonden <rhyme label="a" type="m">placht</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Te leven, die u <rhyme label="b" type="f">verteerde</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Wilt nu anders worden <rhyme label="a" type="m" corresp="#s5:l1">bedacht</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Met gheeste <rhyme label="a" type="m" corresp="#s5:l1">sacht</rhyme>,</l>
        <l id="s5:l5" met="5" type="+-">Leyt een leven van weerde // hier op <rhyme label="b" type="f" corresp="#s5:l2">d'eerde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En gaet met 'tvleesch doch niet te <rhyme label="a" type="m">rae</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Oft het sal u doen <rhyme label="b" type="f">beven</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Maer bidt den Heere om sijn <rhyme label="a" type="m" corresp="#s6:l1">genae</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Vroech ende <rhyme label="a" type="m" corresp="#s6:l1">spae</rhyme>,</l>
        <l id="s6:l5" met="5" type="+-">Wilt hem alleen aencleven // hy salt <rhyme label="b" type="f" corresp="#s6:l2">gheven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wandelt voort in den geest <rhyme label="a" type="m">oprecht</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Wilt u vleesch niet <rhyme label="b" type="f">versinnen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Maer hem altijdts dat quaet <rhyme label="a" type="m" corresp="#s7:l1">ontseght</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Want het <rhyme label="a" type="m" corresp="#s7:l1">beleght</rhyme></l>
        <l id="s7:l5" met="5" type="+-">de Ziel en gheest van binnen // om <rhyme label="b" type="f" corresp="#s7:l2">verwinnen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sijt vast gegront op de <rhyme label="a" type="m">Schriftuer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wilt daer nae doen en <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En wort een nieuwe <rhyme label="a" type="m" corresp="#s8:l1">Creatuer</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Van herten <rhyme label="a" type="m" corresp="#s8:l1">puer</rhyme></l>
        <l id="s8:l5" met="5" type="+-">door 'tgheloove vercoren // nieu <rhyme label="b" type="f" corresp="#s8:l2">gheboren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Want Christus sprack, alsoomen <rhyme label="a" type="m">leest</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Tot Nicodemus <rhyme label="b" type="f">schoone</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Soo ghy niet uyt water en <rhyme label="a" type="m" corresp="#s9:l1">Gheest</rhyme></l>
        <l id="s9:l4" met="2" type="-+">Herboren <rhyme label="a" type="m" corresp="#s9:l1">weest</rhyme>,</l>
        <l id="s9:l5" met="5" type="+-">Ghy en hebt niet te loone // sHemels <rhyme label="b" type="f" corresp="#s9:l2">croone</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Neemt Christum vry tot een <rhyme label="a" type="m">voorbeelt</rhyme></l>
        <l id="s10:l2" met="3" type="-+">En wandelt op zijn <rhyme label="b" type="f">paden</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En grijpt zijn woordt tot eenen <rhyme label="a" type="m" corresp="#s10:l1">schilt</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Niet toeven <rhyme label="a" type="m" corresp="#s10:l1">wilt</rhyme></l>
        <l id="s10:l5" met="5" type="+-">Hy sal u wel ontladen // en <rhyme label="b" type="f" corresp="#s10:l2">beraden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Want ghy en meucht u selven <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Meer leven, maer den <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">die uyt liefden, dit wel <rhyme label="a" type="m" corresp="#s11:l1">insiet</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+">Zijn leven <rhyme label="a" type="m" corresp="#s11:l1">liet</rhyme>.</l>
        <l id="s11:l5" met="5" type="+-">En wijckt in gheenen keere // van sijn <rhyme label="b" type="f" corresp="#s11:l2">leere</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maer ist dat ghy uyt u <rhyme label="a" type="m">ghepijn</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Van Godts gheest zijt <rhyme label="b" type="f">ghedreven</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Soo sult ghy van zijn kinders <rhyme label="a" type="m" corresp="#s12:l1">zijn</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">T'allen <rhyme label="a" type="m" corresp="#s12:l1">termijn</rhyme></l>
        <l id="s12:l5" met="5" type="+-">Met hem in d'eeuwigh leven // zijn <rhyme label="b" type="f" corresp="#s12:l2">verheven</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dies moet ghy eerst hier in dit <rhyme label="a" type="m">wout</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Al na Petrus <rhyme label="b" type="f">vermonden</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Gheproeft worden <rhyme label="a" type="m" corresp="#s13:l1">menighvout</rhyme>,</l>
        <l id="s13:l4" met="2" type="-+">Beter dan <rhyme label="a" type="m" corresp="#s13:l1">gout</rhyme>,</l>
        <l id="s13:l5" met="5" type="+-">Moet u gheloof zijn vonden //t'allen <rhyme label="b" type="f" corresp="#s13:l2">stonden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">En vreest niet voor eenigh <rhyme label="a" type="m">torment</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Christus sal u <rhyme label="b" type="f">genesen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Belijdt hem voor de werelt <rhyme label="a" type="m" corresp="#s14:l1">blent</rhyme></l>
        <l id="s14:l4" met="2" type="-+">Tot in den <rhyme label="a" type="m" corresp="#s14:l1">endt</rhyme>,</l>
        <l id="s14:l5" met="5" type="+-">Soo sult ghy saligh wesen // soo wy <rhyme label="b" type="f" corresp="#s14:l2">lesen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Die dit liedt eerst voort heeft <rhyme label="a" type="m">ghebracht</rhyme></l>
        <l id="s15:l2" met="3" type="-+">En dedet niet om <rhyme label="b" type="f">roemen</rhyme>.</l>
        <l id="s15:l3" met="4" type="-+">Hy bidt elck een te houden <rhyme label="a" type="m" corresp="#s15:l1">wacht</rhyme></l>
        <l id="s15:l4" met="2" type="-+">Met alder <rhyme label="a" type="m" corresp="#s15:l1">kracht</rhyme>,</l>
        <l id="s15:l5" met="5" type="+-">Dat sy in't helsch verdoemen // niet en <rhyme label="b" type="f" corresp="#s15:l2">comen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
