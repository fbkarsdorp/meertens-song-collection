  <author>B. Targier, Anthony Jansen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AY! Harder, wat treurt <rhyme label="a" type="m">ghy</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Stelt klachten aen d'een <rhyme label="a" type="m" corresp="#s1:l1">zy</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Laet alle droefheydt <rhyme label="b" type="f">varen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Al stel ick my wat <rhyme label="c" type="m">vreemt</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Om met u te <rhyme label="b" type="f" corresp="#s1:l3">paren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dit voor geen afscheydt <rhyme label="c" type="m" corresp="#s1:l4">neemt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Of speelt u in 't <rhyme label="a" type="m">ghedacht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat ick my selven <rhyme label="a" type="m" corresp="#s2:l1">acht</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Te waerd', om u te <rhyme label="b" type="f">spreecken</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Wech met die malle <rhyme label="c" type="m">waen</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Waer is ooyt <rhyme label="b" type="f" corresp="#s2:l3">ghebleecken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Aen my soo dwaes <rhyme label="c" type="m" corresp="#s2:l4">bestaen</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Neen Harder denckt dat <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Daer van my gunst <rhyme label="a" type="m" corresp="#s3:l1">gheschiedt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat ick die sal <rhyme label="b" type="f">verachten</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Of zijt ghy vals van <rhyme label="c" type="m">grondt</rhyme>?</l>
        <l id="s3:l5" met="3" type="+-">Soo staet my te <rhyme label="b" type="f" corresp="#s3:l3">wachten</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Voor u tot aller <rhyme label="c" type="m" corresp="#s3:l4">stondt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Al zijn wy Nymphjes <rhyme label="a" type="m">slecht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En gants niet <rhyme label="a" type="m" corresp="#s4:l1">af-gherecht</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Op snoode Linckers <rhyme label="b" type="f">treecken</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Noch sal by ons in 't <rhyme label="c" type="m">endt</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Gheen middel <rhyme label="b" type="f" corresp="#s4:l3">ontbreecken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Daer door ghy wordt <rhyme label="c" type="m" corresp="#s4:l4">bekendt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Spreeckt dan in u <rhyme label="a" type="m">ghemoedt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Is mijn voornemen <rhyme label="a" type="m" corresp="#s5:l1">goedt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Soo sal 't my wel <rhyme label="b" type="f">ghelucken</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Maer leght ghy 't daer op <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Om ons <rhyme label="b" type="f" corresp="#s5:l3">t'onderdrucken</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">'t Sal u tot schand' <rhyme label="c" type="m" corresp="#s5:l4">vergaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
