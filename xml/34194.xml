  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Lest als ick met soete <rhyme label="a" type="f">woorden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Socht te groeten myn <rhyme label="b" type="m">Vrindin</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die myn hert en ziel <rhyme label="a" type="f" corresp="#s1:l1">bekoorden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ach! de Voester van myn <rhyme label="b" type="m" corresp="#s1:l2">min</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Heb ick in't Velt <rhyme label="c" type="f">ghevonden</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Tyter en <rhyme label="d" type="m">Gallaté</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Met Cupieds bandt <rhyme label="c" type="f" corresp="#s1:l5">ghebonden</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">d'Welck my wat stil staen <rhyme label="d" type="m" corresp="#s1:l6">dé</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Tyter gaf haer soete <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Sagh ick wel aen haer <rhyme label="b" type="m">ghelaet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">d'Welck sy hem niet min en <rhyme label="a" type="f" corresp="#s2:l1">deden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Siet hoe't met de liefde <rhyme label="b" type="m" corresp="#s2:l2">gaet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Die ieder acht het <rhyme label="c" type="f">minsten</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En wil het meeste <rhyme label="d" type="m">zyn</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Siet-men op <rhyme label="c" type="f" corresp="#s2:l5">d'on-versiensten</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Verblindt door Cupieds <rhyme label="d" type="m" corresp="#s2:l6">peyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'kBleef noch staen met groot <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Hoe 'tsou eynden met dees <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'kSagh sy voeghde haere <rhyme label="a" type="f" corresp="#s3:l1">wanghen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Naer den wensch van synen <rhyme label="b" type="m" corresp="#s3:l2">sin</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Nu thoonden sy hem haer <rhyme label="c" type="f">kaecken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dan haren rooden <rhyme label="d" type="m">mont</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Wie sou hem niet <rhyme label="c" type="f" corresp="#s3:l5">vermaecken</rhyme>.</l>
        <l id="s3:l8" met="4" type="+-">In soo een soet <rhyme label="d" type="m" corresp="#s3:l6">verbont</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Den tydt quam mynen wensch <rhyme label="a" type="f">begheven</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Want ick trachte meer te <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'kWas in lust, en dwanck <rhyme label="a" type="f" corresp="#s4:l1">ghedreven</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Blyft, en gaet, was al <rhyme label="b" type="m" corresp="#s4:l2">'tghebien</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Ick docht het moght my <rhyme label="c" type="f">schorden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Blyf ick hier langher <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Ick moght begeerigh <rhyme label="c" type="f" corresp="#s4:l5">worden</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Soo ben ick <rhyme label="d" type="m" corresp="#s4:l6">door-ghegaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
