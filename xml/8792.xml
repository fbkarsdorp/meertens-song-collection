    <melody>Durch Adams Fall ist ganz verderbt</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">BEwaert my HEer want ick <rhyme label="a" type="m">betrou</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Op u van Herten <rhyme label="b" type="f">reyne</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick sprack tot Godt, op wien ick <rhyme label="a" type="m" corresp="#s1:l1">bou</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ghy zijt die HEER <rhyme label="b" type="f" corresp="#s1:l2">alleyne</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Om uwen Wil ick lijde <rhyme label="c" type="m">Noot</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Voor d'Heylighen op <rhyme label="d" type="f">Aerde</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Wel Heerlijck zijns' in mijnen <rhyme label="c" type="m" corresp="#s1:l5">Moet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Tot haer staet mijn <rhyme label="d" type="f" corresp="#s1:l6">begeerde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer die d'Affgoden loopen <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Tot Hertleedt sy <rhyme label="b" type="f">gheraken</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ick sal haer Offer met den <rhyme label="a" type="m" corresp="#s2:l1">Bloe</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ten Offer niet gaen <rhyme label="b" type="f" corresp="#s2:l2">maecken</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ick sal ook haren Name <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In mijnen Mont gaen <rhyme label="d" type="f">vueren</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Want vreemde Godes diensten <rhyme label="c" type="m" corresp="#s2:l5">(siet</rhyme>)</l>
        <l id="s2:l8" met="3" type="-+">Prijs ick tot gheender <rhyme label="d" type="f" corresp="#s2:l6">uren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn Erffdeel is die HEEre <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">End mijn Aenpaert voor <rhyme label="b" type="f">allen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het Lot is my nae mijnen <rhyme label="a" type="m" corresp="#s3:l1">Moet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Opt alder best <rhyme label="b" type="f" corresp="#s3:l2">ghevallen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Een schoon Erff is gheworden <rhyme label="c" type="m">mijn</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daerom wil ick GODT <rhyme label="d" type="f">dancken</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Die my so heeft gheraden <rhyme label="c" type="m" corresp="#s3:l5">fijn</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Sijn Raedt is sonder <rhyme label="d" type="f" corresp="#s3:l6">wancken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">S'nachts hebben my oock <rhyme label="a" type="m">gecastijt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Mijn Nieren met <rhyme label="b" type="f">Aenvechten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Voor ooghen heb ick GOdt <rhyme label="a" type="m" corresp="#s4:l1">altijdt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Want hy is my ter <rhyme label="b" type="f" corresp="#s4:l2">Rechten</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Daerom ick oock wel blijven <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Mijn Hert hem dies <rhyme label="d" type="f">verblijde</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Mijn eer is vrolijck heel end' <rhyme label="c" type="m" corresp="#s4:l5">al</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Mijn Tongh' syn Loff <rhyme label="d" type="f" corresp="#s4:l6">belijde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Mijn Vleesch oock seker rusten <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Want (HEER) ghy sult niet <rhyme label="b" type="f">laten</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Blijven mijn Siel int Helsche <rhyme label="a" type="m" corresp="#s5:l1">dal</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Maer dijn Handt salse <rhyme label="b" type="f" corresp="#s5:l2">vaten</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Noch sult ghy oock (mijn HEER end' <rhyme label="c" type="m">Godt</rhyme>)</l>
        <l id="s5:l6" met="3" type="-+">Ghedooghen <rhyme label="d" type="f">nimmermeere</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Dijn Heylige dat hy <rhyme label="c" type="m" corresp="#s5:l5">verrot</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Maer helpen hem met <rhyme label="d" type="f" corresp="#s5:l6">Eere</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den wech doet ghy bekennen <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Al tot het Eewich <rhyme label="b" type="f">Leven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Der Vreuchden volheyt is voor <rhyme label="a" type="m" corresp="#s6:l1">dy</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die ghy alleen doet <rhyme label="b" type="f" corresp="#s6:l2">gheven</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Nae dijne <rhyme label="c" type="m">Goedertierenheyt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dies moet ghy syn <rhyme label="d" type="f">ghepresen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Dijn Rechte Handt daer is <rhyme label="c" type="m" corresp="#s6:l5">bereydt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Een Eewich liefflijck <rhyme label="d" type="f" corresp="#s6:l6">wesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
