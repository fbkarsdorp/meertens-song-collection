  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SOet Kindt wie sal ghenoech u <rhyme label="a" type="f">loven</rhyme>?</l>
        <l id="s1:l2" met="4" type="-+">Ghedaelt die zijt tot ons van <rhyme label="a" type="f" corresp="#s1:l1">boven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Om ons van sonden te <rhyme label="b" type="f">bevrijen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Met groote moet, door bitter <rhyme label="b" type="f" corresp="#s1:l3">lijen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'kSien in 'nen stal van kouw u <rhyme label="a" type="f">beven</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die alle hitte ons moet <rhyme label="a" type="f" corresp="#s2:l1">gheven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'kSien in een kribb' op 't hoy u <rhyme label="b" type="f">rusten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die vult den hemel met <rhyme label="b" type="f" corresp="#s2:l3">wellusten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick sien u ligghen onder <rhyme label="a" type="f">beesten</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Omringhelt met u edel <rhyme label="a" type="f" corresp="#s3:l1">gheesten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Op dat ghy brenghen sout tot <rhyme label="b" type="f">reden</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Den mensch, een beest gelijck in <rhyme label="b" type="f" corresp="#s3:l3">seden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'kSien u de armkens <rhyme label="a" type="f">overwinden</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die alle banden moet <rhyme label="a" type="f" corresp="#s4:l1">onbinden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ick sien dat m' u in sleap moet <rhyme label="b" type="f">wieghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">De voghels die soo snel doet <rhyme label="b" type="f" corresp="#s4:l3">vlieghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ick hoor van dorst u bitter <rhyme label="a" type="f">schreyen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die alle vocht ons moet <rhyme label="a" type="f" corresp="#s5:l1">bereyen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En nae de maeghdlijcke <rhyme label="b" type="f">borsten</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die ghy vervult, sien ick u <rhyme label="b" type="f" corresp="#s5:l3">dorsten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daer m' u de Maeght siet mede <rhyme label="a" type="f">paeien</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die alle dieren moet <rhyme label="a" type="f" corresp="#s6:l1">versaeien</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die u nu op nemt op haer <rhyme label="b" type="f">armen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Nu stilt met soet ghesanck u <rhyme label="b" type="f" corresp="#s6:l3">kermen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoe zijn by een ghevoeght u <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Als s' u omhelst, die vant haer <rhyme label="a" type="f" corresp="#s7:l1">smerten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hoe soetjens op u herten <rhyme label="b" type="f">springhen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Wat soeten lof die Godt dan <rhyme label="b" type="f" corresp="#s7:l3">singhen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghy kariet als het minste <rhyme label="a" type="f">wichtjen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Met d' aldersoeste <rhyme label="a" type="f" corresp="#s8:l1">kindts-ghesichtjen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Met lachskens, vreuchdich boven <rhyme label="b" type="f">maten</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Daer m' alle vreuchden sou om <rhyme label="b" type="f" corresp="#s8:l3">laten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Met ooghskens vol van <rhyme label="a" type="f">minne-trecken</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Tot alle liefde die <rhyme label="a" type="f" corresp="#s9:l1">verwecken</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Die uwe Moeder 't hert <rhyme label="b" type="f">doorstralen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Met liefde liefde dus <rhyme label="b" type="f" corresp="#s9:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Lof zy u, kindt, Godt <rhyme label="a" type="f">onghemeten</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">In 'sVaders throon soo hooch <rhyme label="a" type="f" corresp="#s10:l1">gheseten</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Terwijlent dat w' u met <rhyme label="b" type="f">wellusten</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Kleyn op u Moeders schoot sien <rhyme label="b" type="f" corresp="#s10:l3">rusten</rhyme>.</l>
      </lg>
    </lg>
  </text>
