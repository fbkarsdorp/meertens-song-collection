    </tags>
    <melody>Als alle akers rijpen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">1.WIlt heden vroolijck <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Want Christus onsen <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Is glorieus <rhyme label="a" type="f" corresp="#s1:l1">verresen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Soo wy by Paulus <rhyme label="a" type="f" corresp="#s1:l1">lesen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Sal sterven <rhyme label="b" type="m" corresp="#s1:l2">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waerachtigh is hy <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Verresen door sijn <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Met ziel en al sijn <rhyme label="a" type="f" corresp="#s2:l1">leden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Subtijl, snel en klaer <rhyme label="a" type="f" corresp="#s2:l1">mede</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Uyt sijn besloote <rhyme label="b" type="m" corresp="#s2:l2">gracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Menschen van alle <rhyme label="a" type="f">staten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Verrijst nu <rhyme label="b" type="m">geestelijck</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">'T Sondigh graf moet ghy <rhyme label="a" type="f" corresp="#s3:l1">haten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En 't minst daer niet in <rhyme label="a" type="f" corresp="#s3:l1">laten</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Verrijst heel en <rhyme label="b" type="m" corresp="#s3:l2">gelijck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Verbetert al u <rhyme label="a" type="f">leven</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Vergeet noyt Christus <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">God lof en eer wilt <rhyme label="a" type="f" corresp="#s4:l1">geven</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">En deughden al <rhyme label="a" type="f" corresp="#s4:l1">aenkleven</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Loopt noyt na 's wereldts <rhyme label="b" type="m" corresp="#s4:l2">schijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De zonden wil <rhyme label="a" type="f">versaken</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Doet noyt dat Godt <rhyme label="b" type="m">mis-noeght</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Smaeckt alleen s' Hemels <rhyme label="a" type="f" corresp="#s5:l1">saken</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Laet 't hart geen aerde <rhyme label="a" type="f" corresp="#s5:l1">raken</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Na Godes wil u <rhyme label="b" type="m" corresp="#s5:l2">voeght</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Laet sluyten noyt uw <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Noch 't hart in sondigh <rhyme label="b" type="m">graf</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Oogh, voeten, oor noch <rhyme label="a" type="f" corresp="#s6:l1">tanden</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Dencht hoe weel eeuwigh <rhyme label="a" type="f" corresp="#s6:l1">branden</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Om 't sondigh ydel <rhyme label="b" type="m" corresp="#s6:l2">kaf</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Schout vroom al die <rhyme label="a" type="f">gesellen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hoedanigh dat sy <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Die Satan van der <rhyme label="a" type="f" corresp="#s7:l1">hellen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Dienen in sijn <rhyme label="a" type="f" corresp="#s7:l1">Capellen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Met zangh, dans, bier of <rhyme label="b" type="m" corresp="#s7:l2">wijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Draeft ghy weer uw' qua <rhyme label="a" type="f">paden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Soo thoont ghy <rhyme label="b" type="m">metter-daet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Goods goetheyt te <rhyme label="a" type="f" corresp="#s8:l1">versmaden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sijn lijden en <rhyme label="a" type="f" corresp="#s8:l1">genaden</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Met Iudas hem <rhyme label="b" type="m" corresp="#s8:l2">verraet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wilt ghy geen zonde <rhyme label="a" type="f">mijden</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Christus kan u doodt <rhyme label="b" type="m">slaen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Sonder gena dees <rhyme label="a" type="f" corresp="#s9:l1">tijden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En eeuwigh late <rhyme label="a" type="f" corresp="#s9:l1">lijden</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Noyt meer ghy Godt <rhyme label="b" type="m" corresp="#s9:l2">versmaen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Geeft ons Ã´ Heer der <rhyme label="a" type="f">Heeren</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">Dat wy van dese <rhyme label="b" type="m">tijdt</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Vast en gheel <rhyme label="a" type="f" corresp="#s10:l1">bekeeren</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">En zonden noyt <rhyme label="a" type="f" corresp="#s10:l1">vermeeren</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En maeckt ons eeuwigh <rhyme label="b" type="m" corresp="#s10:l2">blijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
