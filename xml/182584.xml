<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>182584</id>
    <date>
      <year-start>1800</year-start>
      <year-end>1800</year-end>
    </date>
    <tags/>
    <melody>Van de witkleppen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">De vierde halve Brigade <rhyme label="a" type="m">fier</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die heeft nog volk van <rhyme label="b" type="f">noden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Komt Knaapen met groot <rhyme label="a" type="m" corresp="#s1:l1">plyzier</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Het handgeld word u <rhyme label="c" type="m">aangeboden</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Neem maar dienst voor Bataafsche <rhyme label="c" type="m" corresp="#s1:l4">Fuselier</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De kleeren staan zo sraai en <rhyme label="a" type="m">net</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Een Blaauwe Rok met witte <rhyme label="b" type="f">lapelle</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Een Hoedje daar by <rhyme label="a" type="m" corresp="#s2:l1">opgezet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Meisjes kunt gy krygen een stuk drie of <rhyme label="c" type="m">vier</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Als 't maar is een Bataafsche <rhyme label="c" type="m" corresp="#s2:l4">Fuselier</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als wy leggen in 't <rhyme label="a" type="m">Guarnisoen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dan is ieder Meisje te <rhyme label="b" type="f">vreeden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Een Witklep die kan haar <rhyme label="a" type="m" corresp="#s3:l1">voldoen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dan schenkt zy haar hart en <rhyme label="c" type="m">hand</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En haar eer geeft zy te <rhyme label="c" type="m" corresp="#s3:l4">pand</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Men hoort de Trommel <rhyme label="a" type="m">slaan</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Soldaaton wilt u Rantzels <rhyme label="b" type="f">pakken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Het vertrekken dat komt nu <rhyme label="a" type="m" corresp="#s4:l1">aan</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als wy dan trekken na den <rhyme label="c" type="m">Ryn</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Is 't voor de Meisjes groote <rhyme label="c" type="m" corresp="#s4:l4">pyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ons braave Officieren die zyn vol <rhyme label="a" type="m">moed</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ja die waagen ook hun <rhyme label="b" type="f">leeven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Als zy maar na 't Veld toe <rhyme label="a" type="m" corresp="#s5:l1">moet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En raaken wy dan in groote <rhyme label="c" type="m">nood</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dan geeven zy ons Genever, Kruit en <rhyme label="c" type="m" corresp="#s5:l4">Lood</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daar is geen grooter <rhyme label="a" type="m">plyzier</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Als by de vierde halve <rhyme label="b" type="f">Brigade</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daar kunt gy leven in groot <rhyme label="a" type="m" corresp="#s6:l1">plyzier</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Gy jonge knaapen komt maar van <rhyme label="c" type="m">rondom</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">En neemen dienst by 't eerste Bat <rhyme label="c" type="m" corresp="#s6:l4">taillon</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wel kloeke Helden houd u <rhyme label="a" type="m">constant</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Want ik schai 'er uit met <rhyme label="b" type="f">schryven</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Stryd voor uw dierbaar <rhyme label="a" type="m" corresp="#s7:l1">Vaderland</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Een witklep staat in myn hert <rhyme label="c" type="m">geplant</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Zo lang 'er een is in ons <rhyme label="c" type="m" corresp="#s7:l4">Land</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wie dit Liedje heeft <rhyme label="a" type="m">gedigt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Het zyn twee Amsterdamsche meis <rhyme label="b" type="f">jes</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En hun hertje dat was <rhyme label="a" type="m" corresp="#s8:l1">ligt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En houden graag van een <rhyme label="c" type="m">plyzier</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Met een Bataarsche <rhyme label="c" type="m" corresp="#s8:l4">Fuselier</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
