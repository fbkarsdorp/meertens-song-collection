  <author>Aegidius Haeffacker</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Nu wel op <rhyme label="a" type="m">Jerusalem</rhyme>!</l>
        <l id="s1:l2" met="3" type="+-">'t Licht is u <rhyme label="b" type="f">geresen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Christus blinckt in <rhyme label="a" type="m" corresp="#s1:l1">Bethle-em</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Geseghent moet hy <rhyme label="b" type="f" corresp="#s1:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Godt heeft over u <rhyme label="a" type="m">verweckt</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Een te schoonen <rhyme label="b" type="f">luyster</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Daer al 't aerdtrijck werd <rhyme label="a" type="m" corresp="#s2:l1">bedeckt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">van een te dicken <rhyme label="b" type="f" corresp="#s2:l2">duyster</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Draeyt uw' ooghen heen en <rhyme label="a" type="m">weer</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Laet u hert <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">In uw' soonen van soo <rhyme label="a" type="m" corresp="#s3:l1">veer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En dochters van ter <rhyme label="b" type="f" corresp="#s3:l2">sijden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Al de wereld wordt <rhyme label="a" type="m">gesticht</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Volcken, Princen <rhyme label="b" type="f">komen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Om op u verschenen <rhyme label="a" type="m" corresp="#s4:l1">licht</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Haer in 't geloof te <rhyme label="b" type="f" corresp="#s4:l2">vroomen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dromedaris, en <rhyme label="a" type="m">Kameel</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Met geladen <rhyme label="b" type="f">schatten</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Over-vloeyen u <rhyme label="a" type="m" corresp="#s5:l1">gheheel</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Hoe suldy 't komen <rhyme label="b" type="f" corresp="#s5:l2">vatten</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Madian, en Tharsis <rhyme label="a" type="m">stout</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Brenghen u <rhyme label="b" type="f">gheschencken</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Saba, Wieroock; Epha, <rhyme label="a" type="m" corresp="#s6:l1">Gout</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Wel waerdigh t' <rhyme label="b" type="f" corresp="#s6:l2">overdencken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'t Moren-swart valt voor hem <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Ziet haer d' aerde <rhyme label="b" type="f">licken</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">Och! wie 'n sou dit kind'ling <rhyme label="a" type="m" corresp="#s7:l1">teer</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Te recht niet doen <rhyme label="b" type="f" corresp="#s7:l2">verschricken</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'t Is 't beginsel, 't is het <rhyme label="a" type="m">slot</rhyme>;</l>
        <l id="s8:l2" met="3" type="+-">Let niet op sijn' <rhyme label="b" type="f">wooningh</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">'t Wierooc, tuygt hem d' hoogsten <rhyme label="a" type="m" corresp="#s8:l1">God</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En 't Goud, den eersten <rhyme label="b" type="f" corresp="#s8:l2">Koningh</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Zegt dan wat de Myrrh' <rhyme label="a" type="m">beduyd</rhyme></l>
        <l id="s9:l2" met="3" type="+-">Onder dese <rhyme label="b" type="f">gaven</rhyme>?</l>
        <l id="s9:l3" met="4" type="+-">Datmen hem met <rhyme label="a" type="m" corresp="#s9:l1">Balsem-kruyd</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Voor ons eens sal <rhyme label="b" type="f" corresp="#s9:l2">begraven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Iesu Heer! <rhyme label="a" type="m">gebenedijt</rhyme></l>
        <l id="s10:l2" met="3" type="+-">Sijt ghy duysend <rhyme label="b" type="f">werven</rhyme>:</l>
        <l id="s10:l3" met="4" type="+-">Die ons nu gebooren <rhyme label="a" type="m" corresp="#s10:l1">zijt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">End' eens voor ons sult <rhyme label="b" type="f" corresp="#s10:l2">sterven</rhyme>.</l>
      </lg>
    </lg>
  </text>
