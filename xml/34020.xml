  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GOe Jonghman, seght waer <rhyme label="a" type="f">heenen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Heer Jesus is <rhyme label="b" type="m">gegaen</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Gy lijkt togh wel die <rhyme label="a" type="f" corresp="#s1:l1">geenen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die volghden aghter <rhyme label="b" type="m" corresp="#s1:l2">aen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Toen hy wierdt wegh <rhyme label="c" type="m">gebraght</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met schrickelijk <rhyme label="d" type="m">gedruys</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">In 't donker van de <rhyme label="c" type="m" corresp="#s1:l5">naght</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Van 't Pharisees <rhyme label="d" type="m" corresp="#s1:l6">gespuys</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ik sal 't u wel <rhyme label="a" type="f">verklaren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Waer dat hy is <rhyme label="b" type="m">gebraght</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En wat hem is <rhyme label="a" type="f" corresp="#s2:l1">ervaren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In deese droeve <rhyme label="b" type="m" corresp="#s2:l2">naght</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sy hebben hem <rhyme label="c" type="m">geleydt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Getrocken met <rhyme label="d" type="m">geweldt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Met groot <rhyme label="c" type="m" corresp="#s2:l5">onwaerdigheydt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Voor Annas hem <rhyme label="d" type="m" corresp="#s2:l6">gesteldt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Annas heeft hem <rhyme label="a" type="f">gesonden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van hem na <rhyme label="b" type="m">Cayphas</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wel vast en stijf <rhyme label="a" type="f" corresp="#s3:l1">gebonden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die d' Opper-priester <rhyme label="b" type="m" corresp="#s3:l2">was</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Daer waren al by <rhyme label="c" type="m">een</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met haest te saem <rhyme label="d" type="m">vergaert</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Scriben en <rhyme label="c" type="m" corresp="#s3:l5">Phariseen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En Priesters quaet van <rhyme label="d" type="m" corresp="#s3:l6">aerdt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die wil <rhyme label="a" type="f">examineeren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van sijn <rhyme label="b" type="m">Discipulen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Als ook van sijne <rhyme label="a" type="f" corresp="#s4:l1">leeren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die hy quam <rhyme label="b" type="m" corresp="#s4:l2">Preediken</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Maer Iesus seydt met <rhyme label="c" type="m">stilt'</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ik leerd' in 't <rhyme label="d" type="m">openbaer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ist dat gy 't weeten <rhyme label="c" type="m" corresp="#s4:l5">wilt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Soo vraeght het liever <rhyme label="d" type="m" corresp="#s4:l6">haer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sult gy sulk antwoort <rhyme label="a" type="f">geeven</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Seydt een boos knecht <rhyme label="b" type="m">terstondt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En heeft met een <rhyme label="a" type="f" corresp="#s5:l1">gedreeven</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Een slagh aen sijne <rhyme label="b" type="m" corresp="#s5:l2">mondt</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Ist dat ik spreeke <rhyme label="c" type="m">quaedt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Seyt Iesus, geeft <rhyme label="d" type="m">bescheydt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Of waer om gy mijn <rhyme label="c" type="m" corresp="#s5:l5">slaet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Soo ik heb wel <rhyme label="d" type="m" corresp="#s5:l6">geseydt</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En Petrus komt hier <rhyme label="a" type="f">meede</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En schandelijk sijn <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Bevaen met <rhyme label="a" type="f" corresp="#s6:l1">anxtigheede</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Looghent de derde <rhyme label="b" type="m" corresp="#s6:l2">keer</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">En strax den Haen op <rhyme label="c" type="m">krayt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Als Iesus had <rhyme label="d" type="m">voorseydt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dus hy hem van daer <rhyme label="c" type="m" corresp="#s6:l5">drayt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">En bitterlijken <rhyme label="d" type="m" corresp="#s6:l6">schreyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den Phariseeschen <rhyme label="a" type="f">Rade</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die deede veel <rhyme label="b" type="m">beleyt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Om eenigh boosen <rhyme label="a" type="f" corresp="#s7:l1">dade</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Of eenigh onvroom <rhyme label="b" type="m" corresp="#s7:l2">feyt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Te leggen op sijn <rhyme label="c" type="m">hals</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Maer wat sy sloegen <rhyme label="d" type="m">uyt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Was al te samen <rhyme label="c" type="m" corresp="#s7:l5">vals</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">En hadde geen <rhyme label="d" type="m" corresp="#s7:l6">besluyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">En daer ten lesten <rhyme label="a" type="f">quamen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Twee vals getuygen <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die seyden, dat sy <rhyme label="a" type="f" corresp="#s8:l1">t'samen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Van hem hadden <rhyme label="b" type="m" corresp="#s8:l2">gehoort</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Dat hy na sijn <rhyme label="c" type="m">behaegh</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Souw breeken Tempels <rhyme label="d" type="m">bouw</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En weeder in drie <rhyme label="c" type="m" corresp="#s8:l5">daegh</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Een ander maken <rhyme label="d" type="m" corresp="#s8:l6">souw</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Den Opper-priester <rhyme label="a" type="f">seyde</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Gy antwoort niet een <rhyme label="b" type="m">woordt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En geeft gy geen <rhyme label="a" type="f" corresp="#s9:l1">bescheyde</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Van al dat gy hier <rhyme label="b" type="m" corresp="#s9:l2">hoort</rhyme>?</l>
        <l id="s9:l5" met="3" type="-+">'k Sweer u by Godt die <rhyme label="c" type="m">leeft</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Soo g' u voor Goodts Soon <rhyme label="d" type="m">kent</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Dat g' hier op antwoort <rhyme label="c" type="m" corresp="#s9:l5">geeft</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">En Iesus seydt, ik <rhyme label="d" type="m" corresp="#s9:l6">bent</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ja ook na deesen <rhyme label="a" type="f">tijde</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Gy mijn sien sitten <rhyme label="b" type="m">sult</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Aen Goods kraghts <rhyme label="a" type="f" corresp="#s10:l1">reghter-sijde</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Dus krijgen s' <rhyme label="b" type="m" corresp="#s10:l2">onverdult</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">Wat hoeft men tuygen <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Hy spreekt Goods laster <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">De Priester scheurt sijn <rhyme label="c" type="m" corresp="#s10:l5">kleer</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">En vonnist hem ter <rhyme label="d" type="m" corresp="#s10:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Die geene die hem <rhyme label="a" type="f">houden</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Met spot hem sloegen <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En in sijn aensight <rhyme label="a" type="f" corresp="#s11:l1">spouwden</rhyme>;</l>
        <l id="s11:l4" met="3" type="-+">Gedekt hem sloegen <rhyme label="b" type="m" corresp="#s11:l2">weer</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">En seyden, <rhyme label="c" type="m">propheteert</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Wie ist die u nu <rhyme label="d" type="m">slaet</rhyme>?</l>
        <l id="s11:l7" met="3" type="-+">En elk hem <rhyme label="c" type="m" corresp="#s11:l5">blasphemeert</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">s' Hem brengen tot <rhyme label="d" type="m" corresp="#s11:l6">Pilaet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Ogh, ogh, 't is niet te <rhyme label="a" type="f">harden</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Dat Goodes Soon dus <rhyme label="b" type="m">lijdt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Wat sal hem nogh <rhyme label="a" type="f" corresp="#s12:l1">gewarden</rhyme>!</l>
        <l id="s12:l4" met="3" type="-+">Wat alderhande <rhyme label="b" type="m" corresp="#s12:l2">spijt</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Hem nogh te waghten <rhyme label="c" type="m">staet</rhyme>!</l>
        <l id="s12:l6" met="3" type="-+">Eer dat den boosen <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Van deese Jooden <rhyme label="c" type="m" corresp="#s12:l5">quaedt</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Sal konnen sijn <rhyme label="d" type="m" corresp="#s12:l6">geblust</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
