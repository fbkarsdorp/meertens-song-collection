    <melody>Ach mijn schone mijn beminde</melody>
    <categories>
      <category translation="love and sex">liefde en seks</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ACh myn Schoone, Myn <rhyme label="a" type="f">Beminde</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Troost my in dees droeve <rhyme label="b" type="m">Staat</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Want by u is Troost te <rhyme label="a" type="f" corresp="#s1:l1">vinden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die ’t Verstand te boven <rhyme label="b" type="m" corresp="#s1:l2">gaat</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Gy alleen kunt  my <rhyme label="c" type="f">Genezen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">En verheugen myn <rhyme label="d" type="m">Gemoed</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Hoe zoud gy dan Bitter <rhyme label="c" type="f" corresp="#s1:l5">wezen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Daar gy zyt het zoetste <rhyme label="d" type="m" corresp="#s1:l6">Zoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hoe zoud gy my kunnen <rhyme label="a" type="f">Haten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Daar ik u zo trouw <rhyme label="b" type="m">Bemin</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Ik en zal u nooit <rhyme label="a" type="f" corresp="#s2:l1">Verlaten</rhyme></l>
        <l id="s2:l4" met="4" type="+-">En nooit stellen uit myn <rhyme label="b" type="m" corresp="#s2:l2">Zin</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Voor dat my de Dood zal <rhyme label="c" type="f">scheiden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Eer verlaat ik u dog <rhyme label="d" type="m">niet</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Aanhoord myn Klagten, Aanhoord myn <rhyme label="c" type="f" corresp="#s2:l5">Lyden</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Dat om uwent wil <rhyme label="d" type="m" corresp="#s2:l6">geschied</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Min die doed ons Hert <rhyme label="a" type="f">Verteeren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Door het weigeren van het <rhyme label="b" type="m">Zoet</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Min die doed ons Vleijen <rhyme label="a" type="f" corresp="#s3:l1">leeren</rhyme></l>
        <l id="s3:l4" met="4" type="+-">En baard ons veel <rhyme label="b" type="m" corresp="#s3:l2">Tegenspoed</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Door haar uitgespanne <rhyme label="c" type="f">Netten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Vangt zy ons in veel <rhyme label="d" type="m">Verdriet</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Zy is Wreed en steld ons <rhyme label="c" type="f" corresp="#s3:l5">Wetten</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Maakt ons Slaaf als zy ’t <rhyme label="d" type="m" corresp="#s3:l6">Gebied</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laten wy de Liefde <rhyme label="a" type="f">haten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Vlieden wy dat groot <rhyme label="b" type="m">Gevaar</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Min die speeld by alle <rhyme label="a" type="f" corresp="#s4:l1">Staaten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Meenig Rol zo droef en <rhyme label="b" type="m" corresp="#s4:l2">naar</rhyme></l>
        <l id="s4:l5" met="4" type="+-">En uw Wreedheid <rhyme label="c" type="f">uitgelaten</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Brengt veel Minnaars in <rhyme label="d" type="m">Gevaar</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Laten wy de Liefde <rhyme label="c" type="f" corresp="#s4:l5">haten</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Vlieden wy dat groot <rhyme label="d" type="m" corresp="#s4:l6">Gevaar</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
