<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>4255</id>
    <date>
      <year-start>1602</year-start>
      <year-end>1602</year-end>
    </date>
    <tags>
      <tag standard-name="liefdeslied" translation="love song">liefdeslied</tag>
      <tag standard-name="acrostichon" translation="acrostic song">acrostichon</tag>
    </tags>
    <melody>Engelse fortuin</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="love and sex">liefde en seks</category>
    </categories>
  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">MInnelick schoon // <rhyme label="a" type="m">gelaet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Rancke mijns leuens <rhyme label="b" type="f">weerdich</rhyme>:</l>
        <l id="s1:l3" met="3" type="+-">In Venus throon // <rhyme label="a" type="m" corresp="#s1:l1">bestaet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ghy, als een blomken <rhyme label="b" type="f" corresp="#s1:l2">aerdigh</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Mach my (tot <rhyme label="c" type="m">lof</rhyme>)</l>
        <l id="s1:l6" met="3" type="-+">Dijn schoonheyt eens <rhyme label="d" type="f">gelucken</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Ick sal v af <rhyme label="d" type="f" corresp="#s1:l6">plucken</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Voor t'schoonste inden <rhyme label="c" type="m" corresp="#s1:l5">hof</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Aerdiger geene // <rhyme label="a" type="m">maeght</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En was, die smerten <rhyme label="b" type="f">bluste</rhyme>:</l>
        <l id="s2:l3" met="3" type="+-">Dies ghy alleene // <rhyme label="a" type="m" corresp="#s2:l1">draeght</rhyme></l>
        <l id="s2:l4" met="3" type="-+">T'confoort, der herten // <rhyme label="b" type="f" corresp="#s2:l2">ruste</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Deurschoten // <rhyme label="c" type="m">lief</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Heeft my u zeed-baer <rhyme label="d" type="f">wesen</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Sent my doch <rhyme label="d" type="f" corresp="#s2:l6">t'genesen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">In een gesloten // <rhyme label="c" type="m" corresp="#s2:l5">brief</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Ingelick weder // <rhyme label="a" type="m">paer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Voor swaer tempeest, en <rhyme label="b" type="f">donder</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Zijt ghy den Ceder // <rhyme label="a" type="m" corresp="#s3:l1">daer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Mijn ziel sal rusten <rhyme label="b" type="f" corresp="#s3:l2">onder</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Der sonnen // <rhyme label="c" type="m">schijn</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Passeert ghy int <rhyme label="d" type="f">geheele</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Valt ghy t'mijnen <rhyme label="d" type="f" corresp="#s3:l6">deele</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">T'sal veel gewonnen // <rhyme label="c" type="m" corresp="#s3:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Keert dan der pijnen // <rhyme label="a" type="m">vloet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In perfecte <rhyme label="b" type="f">gesonde</rhyme>:</l>
        <l id="s4:l3" met="3" type="+-">Want ghy van mijnen // <rhyme label="a" type="m" corresp="#s4:l1">moet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">T'secreet weet, tot den <rhyme label="b" type="f" corresp="#s4:l2">gronde</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">En cleeft <rhyme label="c" type="m">altijt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Op thert, als crachtich <rhyme label="d" type="f">seghel</rhyme>:</l>
        <l id="s4:l7" met="3" type="+-">O volmaeckten <rhyme label="d" type="f" corresp="#s4:l6">spegel</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Die sonder schaduw' <rhyme label="c" type="m" corresp="#s4:l5">zijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Een sulck behagen // <rhyme label="a" type="m">vast</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Draech ick u Jeught // ter // <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Geheel der plagen // <rhyme label="a" type="m" corresp="#s5:l1">last</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Cont ghy in vreught // <rhyme label="b" type="f" corresp="#s5:l2">verkeeren</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Ter schanden // <rhyme label="c" type="m">laet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">V dienaer niet <rhyme label="d" type="f">bederuen</rhyme>:</l>
        <l id="s5:l7" met="3" type="+-">Mijn leuen, en <rhyme label="d" type="f" corresp="#s5:l6">steruen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">In uwen handen // <rhyme label="c" type="m" corresp="#s5:l5">staet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Nobel deesse // <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">In danck, wilt dit <rhyme label="b" type="f">aenvaten</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Mijn schoon Princesse // <rhyme label="a" type="m" corresp="#s6:l1">moet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ghy zijn, sonder <rhyme label="b" type="f" corresp="#s6:l2">aflaten</rhyme>:</l>
        <l id="s6:l5" met="2" type="-+">Hier mede // <rhyme label="c" type="m">schrijft</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Mijn hant, dat u <rhyme label="d" type="f">ontmoeten</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Hondert duysent <rhyme label="d" type="f" corresp="#s6:l6">groeten</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">En voorts in vrede // <rhyme label="c" type="m" corresp="#s6:l5">blijft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
