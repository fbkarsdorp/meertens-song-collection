  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">LAet ons den <rhyme label="a" type="m">vasten-avont-tijt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Verslijten met veel <rhyme label="a" type="m" corresp="#s1:l1">jolijt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Laet ons ons voeghen tot het <rhyme label="b" type="f">drincken</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Bacchus sal ons het wijntjen <rhyme label="b" type="f" corresp="#s1:l3">schincken</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Eer ons den tijdt <rhyme label="a" type="m" corresp="#s1:l1">ontglijdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'t Is best dat wy den jonghen <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Besteden in drolligh' <rhyme label="a" type="m" corresp="#s2:l1">ghelagh</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Eer dat aen ons ons' grijse <rhyme label="b" type="f">hayren</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Niet dan een koude droefheyt <rhyme label="b" type="f" corresp="#s2:l3">baren</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Dus kies ick desen <rhyme label="a" type="m" corresp="#s2:l1">dagh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dus kies ick desen dagh van <rhyme label="a" type="m">vreughdt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En wil ghebruycken mijn <rhyme label="a" type="m" corresp="#s3:l1">jeughdt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Eer dat ons ons' <rhyme label="b" type="f">naer-komelingen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Over ons' droeve doodt-kist <rhyme label="b" type="f" corresp="#s3:l3">singen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Tot hun-li'en meer <rhyme label="a" type="m" corresp="#s3:l1">gheneught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want wat ons naeste maeghschap <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En heeft ons noyt <rhyme label="a" type="m" corresp="#s4:l1">ghevoedt</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Vrinden plaisier en groote <rhyme label="b" type="f">genuchten</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Doen den gulsigen Bromium <rhyme label="b" type="f" corresp="#s4:l3">suchten</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Soo hy niet med' en <rhyme label="a" type="m" corresp="#s4:l1">doet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En wat ick aen mijn selven <rhyme label="a" type="m">doen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat plagh my meer te <rhyme label="a" type="m" corresp="#s5:l1">vo'en</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Liefde die wilt haer selven eerst <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En dan laet sy haer zwacke <rhyme label="b" type="f" corresp="#s5:l3">sinnen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Tot anders baten <rhyme label="a" type="m" corresp="#s5:l1">ho'en</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ey ! laet ons dan den lieven <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s6:l2" met="3" type="-+">(Die ons ghebeuren <rhyme label="a" type="m" corresp="#s6:l1">magh</rhyme>)</l>
        <l id="s6:l3" met="4" type="-+">Niet ydel van ons laten <rhyme label="b" type="f">af-loopen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Ons gelt dat dient om vreughden te <rhyme label="b" type="f" corresp="#s6:l3">koopen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Met malheydt en <rhyme label="a" type="m" corresp="#s6:l1">ghelach</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
