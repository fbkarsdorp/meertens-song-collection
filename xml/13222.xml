    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Grooten Heer waerom soo <rhyme label="a" type="m">kleyn</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Is eenen Stal van u <rhyme label="b" type="f">verkooren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Siet ghy van eene Maget <rhyme label="a" type="m" corresp="#s1:l1">reyn</rhyme></l>
        <l id="s1:l4" met="4" type="-+">In alle noot soo bloot <rhyme label="b" type="f" corresp="#s1:l2">gebooren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Mensch' ick uyt mijn eeuwigh <rhyme label="a" type="m">Rijck</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ben op der aerden neer <rhyme label="b" type="f">geresen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om dat ghy wilde Godt <rhyme label="a" type="m" corresp="#s2:l1">gelijck</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Met Adam, en met Eva <rhyme label="b" type="f" corresp="#s2:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O Eeuwigh V Voort waer is u <rhyme label="a" type="m">stem</rhyme>?</l>
        <l id="s3:l2" met="4" type="-+">Die eertijts Israël dee <rhyme label="b" type="f">beven</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">VVaerom een kindt in <rhyme label="a" type="m" corresp="#s3:l1">Bethlehem</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Sijt ghy van boven ons <rhyme label="b" type="f" corresp="#s3:l2">gegeven</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O M dat ghy wilde goet, en <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">O mensch' hoveerdigh, door het <rhyme label="b" type="f">eten</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Van eenen appel tegen <rhyme label="a" type="m" corresp="#s4:l1">raedt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Van uwen Heer, en Schepper <rhyme label="b" type="f" corresp="#s4:l2">weten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">OMeester van de werelt <rhyme label="a" type="m">al</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Moet ghy een plaets voor u gaen <rhyme label="b" type="f">soecken</rhyme>?</l>
        <l id="s5:l3" met="4" type="-+">En vindt ghy niet als eenen <rhyme label="a" type="m" corresp="#s5:l1">stal</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Eylaes! een weynigh' arme <rhyme label="b" type="f" corresp="#s5:l2">doecken</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">OMensch' een vellen- kleet <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Was u van Godt om uwe <rhyme label="b" type="f">sonden</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Daerom oock mijn <rhyme label="a" type="m" corresp="#s6:l1">onnooselheyt</rhyme></l>
        <l id="s6:l4" met="4" type="-+">In arme doeckjens is <rhyme label="b" type="f" corresp="#s6:l2">gewonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">WAerom, ô Iesu Davids <rhyme label="a" type="m">Soon</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Gebooren Israëls <rhyme label="b" type="f">behoeder</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Kiest ghy de krib voor uwen <rhyme label="a" type="m" corresp="#s7:l1">throon</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In 't hoy geleyt van uwe <rhyme label="b" type="f" corresp="#s7:l2">Moeder</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">IN dese noot,en <rhyme label="a" type="m">ongemack</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">O mensch', om uwe quade <rhyme label="b" type="f">lusten</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Hier onder dit ellendigh <rhyme label="a" type="m" corresp="#s8:l1">dack</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Om u te lossen, moet ick <rhyme label="b" type="f" corresp="#s8:l2">rusten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">DIe van den hemel zijt <rhyme label="a" type="m">ge-eert</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En wort gedient van all' u <rhyme label="b" type="f">geesten</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Hoe is u hoogheyt soo <rhyme label="a" type="m" corresp="#s9:l1">verneert</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Geleyt ootmoedigh by de <rhyme label="b" type="f" corresp="#s9:l2">beesten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">OM uwe schult, ô Adams <rhyme label="a" type="m">kindt</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Ghy by de beesten zijt <rhyme label="b" type="f">geleken</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">De beesten, daer ghy my by <rhyme label="a" type="m" corresp="#s10:l1">vindt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Sijn u gegeven voor een <rhyme label="b" type="f" corresp="#s10:l2">teken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O Langh verwacht van <rhyme label="a" type="m">Israël</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">En niet, eylaes, van haer <rhyme label="b" type="f">ontfangen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Hoe sien ick hier, <rhyme label="a" type="m" corresp="#s11:l1">Emmanuël</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Alreets de tranen op u <rhyme label="b" type="f" corresp="#s11:l2">wangen</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">OM u, ô Sondaer,ick soo <rhyme label="a" type="m">schrey</rhyme>.</l>
        <l id="s12:l2" met="4" type="-+">U sonden my alsoo <rhyme label="b" type="f">bedroeven</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Ick u noch tot berouw <rhyme label="a" type="m" corresp="#s12:l1">verbey</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">O mensch' en wilt niet meer <rhyme label="b" type="f" corresp="#s12:l2">vertoeven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
