    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>De laatste dag zal nu haast komen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Den laetsten Dach sal nu haest <rhyme label="a" type="f">comen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Want die boosheyt heeft seer <rhyme label="a" type="f" corresp="#s1:l1">toegenomen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wat Christus heeft <rhyme label="b" type="m">voorseyt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat wort nu hier <rhyme label="b" type="m" corresp="#s1:l3">beschreyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den afual des gheloouens is <rhyme label="a" type="f">openbaar</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat die gheschiet is voor menich <rhyme label="a" type="f" corresp="#s2:l1">Jaer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">So Paulus den goeden <rhyme label="b" type="m">man</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Claerlijck ons bewijset <rhyme label="b" type="m" corresp="#s2:l3">an</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den Sone des verderuens is lange <rhyme label="a" type="f">geseten</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">In Godts Tempel met hooch <rhyme label="a" type="f" corresp="#s3:l1">vermeten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En heeft verdreuen syn <rhyme label="b" type="m">ghebot</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Recht al of hy waere <rhyme label="b" type="m" corresp="#s3:l3">Godt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Veel valsche Propheten syn <rhyme label="a" type="f">voorhanden</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Veel Secten en Ketters syn <rhyme label="a" type="f" corresp="#s4:l1">opgestanden</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Die met haren schijn en <rhyme label="b" type="m">leer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die ghemeynte schaden <rhyme label="b" type="m" corresp="#s4:l3">seer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dewijl ons nu Antechrists <rhyme label="a" type="f">orden</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Door Godts woort verclaert is <rhyme label="a" type="f" corresp="#s5:l1">worden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">So laet ons vlieden <rhyme label="b" type="m">snel</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Sijn Decreten en <rhyme label="b" type="m" corresp="#s5:l3">beuel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Laet ons in Gods verbonden vast <rhyme label="a" type="f">treden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En daerin altijt waken en <rhyme label="a" type="f" corresp="#s6:l1">beden</rhyme>/</l>
        <l id="s6:l3" met="3" type="-+">Want den laetsten dach <rhyme label="b" type="m">subijt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Compt seer haest, van ons niet <rhyme label="b" type="m" corresp="#s6:l3">wijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die werelt in sonden steect, en <rhyme label="a" type="f">verblentheyt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En soecket om te stoppen Godts <rhyme label="a" type="f" corresp="#s7:l1">bekentheyt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Den Heere salt oock laeten <rhyme label="b" type="m">gheschien</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En tsaemen <rhyme label="b" type="m" corresp="#s7:l3">aensien</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer als sy meynen te hebben <rhyme label="a" type="f">gewonnen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En al haer ongheluck te syn <rhyme label="a" type="f" corresp="#s8:l1">ontronnen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">So sal Godt met aller <rhyme label="b" type="m">macht</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ouercommen <rhyme label="b" type="m" corresp="#s8:l3">onuerwacht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Groote plaghen sullen haer <rhyme label="a" type="f">omringhen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En alle creatueren teghen haer <rhyme label="a" type="f" corresp="#s9:l1">dinghen</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Dan sal oock Christus tooghen <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dat hy een Rechter <rhyme label="b" type="m" corresp="#s9:l3">sy</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dan sal hy synen Ertzenghel <rhyme label="a" type="f">beuelen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dat hy verwecket die doode van <rhyme label="a" type="f" corresp="#s10:l1">quelen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En dat sy allegader <rhyme label="b" type="m">opstaen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Om voor hem te <rhyme label="b" type="m" corresp="#s10:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dan sal hy tot synen Enghelen <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Nu wil ick my aen mijn vyanden <rhyme label="a" type="f" corresp="#s11:l1">wreken</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Die nu teghen my heeft <rhyme label="b" type="m">ghedaen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Sal synen loon <rhyme label="b" type="m" corresp="#s11:l3">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Vergadert my hier mijn <rhyme label="a" type="f">wtuercoren</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En alle gheloouige, en nieu <rhyme label="a" type="f" corresp="#s12:l1">gheboren</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Die mijn verbont hebben <rhyme label="b" type="m">bedacht</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">En trouwelijck <rhyme label="b" type="m" corresp="#s12:l3">volbracht</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dan sullen sy die ten rechte <rhyme label="a" type="f">stellen</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Daer den Heere een lieflijck oordeel sal <rhyme label="a" type="f" corresp="#s13:l1">vellen</rhyme>:</l>
        <l id="s13:l3" met="3" type="-+">Compt hier mijn vrienden al <rhyme label="b" type="m">ghelijck</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Besittet nu mijn <rhyme label="b" type="m" corresp="#s13:l3">rijck</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Maer tot den Godloosen sal hy <rhyme label="a" type="f">segghen</rhyme>:</l>
        <l id="s14:l2" met="4" type="-+">Wel aen nu moet ick u van my <rhyme label="a" type="f" corresp="#s14:l1">legghen</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Waeromme hebt ghy mijn <rhyme label="b" type="m">verbont</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Ghenomen in den <rhyme label="b" type="m" corresp="#s14:l3">mont</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dewijl ghy Godtsalicheyt hebt <rhyme label="a" type="f">verachtet</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">En alleen nae alle sonde <rhyme label="a" type="f" corresp="#s15:l1">ghetrachtet</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Om dat ick sweech so meyndet <rhyme label="b" type="m">ghy</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Ten was al niet voor <rhyme label="b" type="m" corresp="#s15:l3">my</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">VVijckt van my ghy <rhyme label="a" type="f">vermalendijde</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">In dat vier twelck voor langhen <rhyme label="a" type="f" corresp="#s16:l1">tijde</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Allen duyuelen is <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Voor haer <rhyme label="b" type="m" corresp="#s16:l3">boosheyt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Dan sullen sy moeten ter hellen <rhyme label="a" type="f">dalen</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Daer sy altijt sullen wesen in <rhyme label="a" type="f" corresp="#s17:l1">qualen</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Met onwtspreekelijcke <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Daer gheen eynde sal <rhyme label="b" type="m" corresp="#s17:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Maer syn volck sal hij van desen <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">En salse tot Hemelsche blijschap <rhyme label="a" type="f" corresp="#s18:l1">leyden</rhyme>:</l>
        <l id="s18:l3" met="3" type="-+">Die daer als der Sonnen <rhyme label="b" type="m">claerheyt</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Sal blijuen in <rhyme label="b" type="m" corresp="#s18:l3">waerheyt</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Ey Heere staet ons nu by op <rhyme label="a" type="f">eerden</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">En bereyt ons dat wy weerdich <rhyme label="a" type="f" corresp="#s19:l1">aenueerden</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">In eewicheyt <rhyme label="b" type="m">verheuen</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Een eewich <rhyme label="b" type="m" corresp="#s19:l3">leuen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
