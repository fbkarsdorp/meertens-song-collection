    <melody>Je meurs de regrets</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">JE meurs de Regret quand je <rhyme label="a" type="f">songe</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Devoir quitter ce Charmant <rhyme label="b" type="m">lieu</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Un Eternel chagrin me <rhyme label="a" type="f" corresp="#s1:l1">ronge</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">En M'éloignant de vos beaux <rhyme label="b" type="m" corresp="#s1:l2">jeux</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Cupidon' Dieu si <rhyme label="c" type="f">redoutable</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Pourquoi quand le destin <rhyme label="c" type="f" corresp="#s1:l5">Maccable</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">N'Empéche tu le <rhyme label="d" type="m">Cruël</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Capricieux coup <rhyme label="d" type="m" corresp="#s1:l7">mortel</rhyme>:</l>
        <l id="s1:l9" met="2" type="-+">Qui romps nos <rhyme label="e" type="m">Noeuds</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Que tes Charmes belle <rhyme label="a" type="f">Silvie</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Coutent cher à mon tendre <rhyme label="b" type="m">coeur</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Ton absense sera <rhyme label="a" type="f" corresp="#s2:l1">suivie</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Des plus insupportables <rhyme label="b" type="m" corresp="#s2:l2">langeurs</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Helas pourrai je vivre <rhyme label="c" type="f">encore</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Loing de vos attraits que <rhyme label="c" type="f" corresp="#s2:l5">j'adore</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Plutôt mourir mille <rhyme label="d" type="m">fois</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">Que ne pas suivre les <rhyme label="d" type="m" corresp="#s2:l7">loix</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Du dieu <rhyme label="e" type="m">d'amour</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
