  <author>Jan Mommaert</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">LIefste <rhyme label="a" type="f">Amaranthe</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Hoe komt dat u <rhyme label="b" type="m">oogh</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Rond om alle <rhyme label="a" type="f" corresp="#s1:l1">kanten</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Gist’ren soo gedurigh <rhyme label="b" type="m" corresp="#s1:l2">vloog</rhyme>?</l>
        <l id="s1:l5" met="4" type="+-">Ja, Leander, ’t is wel <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Seven Lammers ben ic <rhyme label="c" type="m" corresp="#s1:l5">quijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Kom, kom <rhyme label="a" type="f">Herderinne</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">En kijckt niet meer <rhyme label="b" type="m">om</rhyme>:</l>
        <l id="s2:l3" met="3" type="+-">‘k Schenck u Lief uyt <rhyme label="a" type="f" corresp="#s2:l1">minne</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Seven schaepjens <rhyme label="b" type="m" corresp="#s2:l2">wederom</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Geeft my slechts tot <rhyme label="c" type="m">onderpant</rhyme></l>
        <l id="s2:l6" met="4" type="+-">’t Troutjen van u <rhyme label="c" type="m" corresp="#s2:l5">rechter-handt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Soetjes wat <rhyme label="a" type="f">Leander</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Meynt ghy dat een <rhyme label="b" type="m">Maeght</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Aen d’een ende <rhyme label="a" type="f" corresp="#s3:l1">d’ander</rhyme></l>
        <l id="s3:l4" met="4" type="+-">So terstont haer liefde <rhyme label="b" type="m" corresp="#s3:l2">waegt</rhyme>?</l>
        <l id="s3:l5" met="4" type="+-">Een goet Jager ’t wildt niet <rhyme label="c" type="m">acht</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dat hem ’t sweet niet aen en <rhyme label="c" type="m" corresp="#s3:l5">bracht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Segt my <rhyme label="a" type="f">honigh-diefjen</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Waerom soo <rhyme label="b" type="m">geveyst</rhyme>?</l>
        <l id="s4:l3" met="3" type="+-">Komt doch soete <rhyme label="a" type="f" corresp="#s4:l1">Liefjen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Eer de Sonn’ te rugge <rhyme label="b" type="m" corresp="#s4:l2">deyst</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Laet ons kouten in geen’ <rhyme label="c" type="m">wey</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Eenigh praetjen van <rhyme label="c" type="m" corresp="#s4:l5">gevry</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Ey! ick bidd’ u <rhyme label="a" type="f">Herder</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Eer ons naeckt <rhyme label="b" type="m">getreur</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Gaen wy doch wat <rhyme label="a" type="f" corresp="#s5:l1">verder</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Daer ons niemands oogh en <rhyme label="b" type="m" corresp="#s5:l2">speur</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Maer siet Herder, onse <rhyme label="c" type="m">veên</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Loopen, dunckt my, onder <rhyme label="c" type="m" corresp="#s5:l5">een</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Laet ons schaepjens <rhyme label="a" type="f">weyden</rhyme></l>
        <l id="s6:l2" met="3" type="+-">t’Samen <rhyme label="b" type="m">Amaranth</rhyme>’:</l>
        <l id="s6:l3" met="3" type="+-">Want sy <rhyme label="a" type="f" corresp="#s6:l1">alle-beyden</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Zijn aen eenen Heer <rhyme label="b" type="m" corresp="#s6:l2">verpand</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Ondertusschen <rhyme label="c" type="m">Herderin</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Spreeckt Leander van de <rhyme label="c" type="m" corresp="#s6:l5">min</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Herder, ick <rhyme label="a" type="f">verander</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Door u soet <rhyme label="b" type="m">gedicht</rhyme>.</l>
        <l id="s7:l3" met="3" type="+-">Lief, ghy doodt <rhyme label="a" type="f" corresp="#s7:l1">Leander</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Door u lodderlijck <rhyme label="b" type="m" corresp="#s7:l2">gesicht</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Tot genesingh van ons <rhyme label="c" type="m">smert</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Schenckt my Amarant’ u <rhyme label="c" type="m" corresp="#s7:l5">hert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Herder, ’t wordt te <rhyme label="a" type="f">spade</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">‘k Laet u hier <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Doet my rechts <rhyme label="a" type="f" corresp="#s8:l1">genade</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Dat ghy scheyt ons Vee van <rhyme label="b" type="m" corresp="#s8:l2">een</rhyme>;</l>
        <l id="s8:l5" met="4" type="+-">Want ick vrees voor <rhyme label="c" type="m">ongeval</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Eer sy raken in den <rhyme label="c" type="m" corresp="#s8:l5">stal</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Toeft wat, lieve <rhyme label="a" type="f">schapen</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">Terwijl ick wat <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s9:l3" met="3" type="+-">‘k Sal u laten <rhyme label="a" type="f" corresp="#s9:l1">rapen</rhyme></l>
        <l id="s9:l4" met="4" type="+-">’t Beste kruydtjen van de <rhyme label="b" type="m" corresp="#s9:l2">wey</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">En ghy spade <rhyme label="c" type="m">Sonne-schijn</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Laet ons noch wat t’samen <rhyme label="c" type="m" corresp="#s9:l5">sijn</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">’t Schaepjen dat by <rhyme label="a" type="f">nachten</rhyme></l>
        <l id="s10:l2" met="3" type="+-">Soo spaed’ is op ’t <rhyme label="b" type="m">veldt</rhyme>,</l>
        <l id="s10:l3" met="3" type="+-">Is niet te <rhyme label="a" type="f" corresp="#s10:l1">verwachten</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Als der wolven wreet <rhyme label="b" type="m" corresp="#s10:l2">gewelt</rhyme>:</l>
        <l id="s10:l5" met="4" type="+-">Gaet dan Schaepjens naer u <rhyme label="c" type="m">kooy</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Eer gy wort der wolven <rhyme label="c" type="m" corresp="#s10:l5">prooy</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">Liefste, eer wy <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s11:l2" met="3" type="+-">‘k Bidd’ u noch een <rhyme label="b" type="m">woordt</rhyme>,</l>
        <l id="s11:l3" met="3" type="+-">‘k Sal u dan <rhyme label="a" type="f" corresp="#s11:l1">geleyden</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">En u schaepjens stieren <rhyme label="b" type="m" corresp="#s11:l2">voort</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Neen, Leander, ’t is <rhyme label="c" type="m">genoegh</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">‘k Segh Adieu tot morghen <rhyme label="c" type="m" corresp="#s11:l5">vroegh</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="+-">Vaert wel <rhyme label="a" type="f">Herderinne</rhyme>,</l>
        <l id="s12:l2" met="3" type="+-">Vaert wel <rhyme label="b" type="m">Amaranth</rhyme>’,</l>
        <l id="s12:l3" met="3" type="+-">Voester van mijn <rhyme label="a" type="f" corresp="#s12:l1">minne</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Oorsaec van mijn eerste <rhyme label="b" type="m" corresp="#s12:l2">brant</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Adieu, Herder, goede <rhyme label="c" type="m">rust</rhyme>.</l>
        <l id="s12:l6" met="4" type="+-">Amaranth’ noch eens <rhyme label="c" type="m" corresp="#s12:l5">gekust</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
