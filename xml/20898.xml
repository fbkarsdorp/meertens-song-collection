    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <location>
      <orginal-name>antwerpen</orginal-name>
      <standard-name>Antwerp, Belgium</standard-name>
      <coordinates>
        <lon>51.2211097</lon>
        <lat>4.3997081</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Ons leven vol van zoet en zuur</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O God, die zijt het lot, en <rhyme label="a" type="m">loon</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">De glans, de Fleur, de prijs, de <rhyme label="a" type="m" corresp="#s1:l1">kroon</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Van uwe trouwe <rhyme label="b" type="f">Mar-te-lae-ren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ontbindt in ons der son-den <rhyme label="b" type="f" corresp="#s1:l3">snaaren</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ter eere van dees <rhyme label="a" type="m">Martelaer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die 's werelts vreugd, en 't Aerds <rhyme label="a" type="m" corresp="#s2:l1">gevaer</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Om uwen 't will' heeft laten <rhyme label="b" type="f">vaeren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dies nu vergaert by 's hemels <rhyme label="b" type="f" corresp="#s2:l3">Schaeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy heeft tormenten veel <rhyme label="a" type="m">gele'en</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En Mannelijck heeft Hy <rhyme label="a" type="m" corresp="#s3:l1">gestre'en</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hy heeft voor U sijn bloed <rhyme label="b" type="f">vergoten</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En daerom 's hemels wijn <rhyme label="b" type="f" corresp="#s3:l3">genoten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dies bidden wy met <rhyme label="a" type="m">nedricheyd</rhyme></l>
        <l id="s4:l2" met="4" type="-+">O Jesu! uwe <rhyme label="a" type="m" corresp="#s4:l1">Majesteyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Verbandt van ons door uwe <rhyme label="b" type="f">graty</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Ons' sonden op dees Martyrs <rhyme label="b" type="f" corresp="#s4:l3">Staty</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">God-Vader, Soon, en d' Heyl'gen <rhyme label="a" type="m">Geest</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Zy lof, en glory <rhyme label="a" type="m" corresp="#s5:l1">aldermeest</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Soo op dees Aerd', als oock hier <rhyme label="b" type="f">boven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Waer Hem gestaegh de Eng'len <rhyme label="b" type="f" corresp="#s5:l3">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
