  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">EEn Vijge-Boom trock 't oogh der <rhyme label="a" type="f">Wandelaren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Door haer vermaecklijck <rhyme label="b" type="m">groen</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">En deed haer krans in 't Vogels-Rijck <rhyme label="a" type="f" corresp="#s1:l1">op-varen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Als Ceder-Boomen <rhyme label="b" type="m" corresp="#s1:l2">doen</rhyme>.</l>
        <l id="s1:l5" met="3" type="+-">Scheen bequaem te <rhyme label="b" type="m" corresp="#s1:l2">voÃªn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En met haer vrucht te <rhyme label="c" type="f">laven</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Al die mat, op 't <rhyme label="d" type="m">Wandel-padt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Verhongert hene <rhyme label="c" type="f" corresp="#s1:l6">draven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Maer doe de spruyt uyt Jesse hem <rhyme label="a" type="f">genaeckte</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Op dat hy in de <rhyme label="b" type="m">noodt</rhyme></l>
        <l id="s2:l3" met="5" type="-+">De soete vrucht, van hem oock eensjes <rhyme label="a" type="f" corresp="#s2:l1">smaeckte</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Was hy van vruchten <rhyme label="b" type="m" corresp="#s2:l2">bloodt</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">'t Was schijn wat hy <rhyme label="b" type="m" corresp="#s2:l2">doodt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">En pronck van groene <rhyme label="c" type="f">bladen</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Alwaer van // niemant hem <rhyme label="d" type="m">kan</rhyme></l>
        <l id="s2:l8" met="3" type="-+">In hongers-tijdt <rhyme label="c" type="f" corresp="#s2:l6">versaden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Hier komt ten toon, de <rhyme label="a" type="f">schijn-vermaecklijckheden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van 's Wereldts <rhyme label="b" type="m">pronck-cieraet</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Daer 't Aertsche volck, ontbloodt van rechte <rhyme label="a" type="f" corresp="#s3:l1">reden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Soo hongerigh na <rhyme label="b" type="m" corresp="#s3:l2">gaet</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Maer blijft <rhyme label="b" type="m" corresp="#s3:l2">onversaedt</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Want als Godt komt <rhyme label="c" type="f">tuchten</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Met sijn wraeck // gaet Aerdts <rhyme label="d" type="m">vermaeck</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Van hare Minnaers <rhyme label="c" type="f" corresp="#s3:l6">vluchten</rhyme>.</l>
      </lg>
    </lg>
  </text>
