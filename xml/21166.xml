  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Mach men niet te recht <rhyme label="a" type="f">ghelijcken</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Dese Wereldt by een <rhyme label="b" type="m">Val</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Wereldt, die aen ons doet <rhyme label="a" type="f" corresp="#s1:l1">blijcken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat sy ons bedrieghen <rhyme label="b" type="m" corresp="#s1:l2">sal</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Wereldt ghy lockt ons <rhyme label="c" type="m">ghemoedt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Als de Val het Muysje <rhyme label="c" type="m" corresp="#s1:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Satan, om de Ziel te <rhyme label="a" type="f">vanghen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Heeft het lock-aes van sijn <rhyme label="b" type="m">vreughdt</rhyme></l>
        <l id="s2:l3" met="4" type="+-">In des Wereldts Val <rhyme label="a" type="f" corresp="#s2:l1">ghehanghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Tot bekooringh van ons <rhyme label="b" type="m" corresp="#s2:l2">Ieught</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">En hy lockt ons door dat <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Als de Val het Muysje <rhyme label="c" type="m" corresp="#s2:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Muysjen in de Val <rhyme label="a" type="f">ghetoghen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Door de graeghte tot het <rhyme label="b" type="m">Aes</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Vindt sich onversiens <rhyme label="a" type="f" corresp="#s3:l1">bedroghen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Maer beklaeght sijn lust <rhyme label="b" type="m" corresp="#s3:l2">eylaes</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En het voelt zich heel <rhyme label="c" type="m">bedroeft</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Om een weynigh, naeuw <rhyme label="c" type="m" corresp="#s3:l5">gheproeft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Rijckdom, Wellust, Wereldts <rhyme label="a" type="f">Eere</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Staet-sucht, Pracht, en <rhyme label="b" type="m">Hoovaerdy</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daer beneffens te <rhyme label="a" type="f" corresp="#s4:l1">begheeren</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Lichaems weelden, <rhyme label="b" type="m" corresp="#s4:l2">Leckerny</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">'t Is maer voor een korte <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Daer de Ziel soo langh om <rhyme label="c" type="m" corresp="#s4:l5">lijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Eermen 't Aes begint te <rhyme label="a" type="f">proeven</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Valdt de Val van 't Leven <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En de Ziel raeckt in <rhyme label="a" type="f" corresp="#s5:l1">bedroeven</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Want men leeft, ick weet niet <rhyme label="b" type="m" corresp="#s5:l2">hoe</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Heden is men Rijck en <rhyme label="c" type="m">Groot</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Morghen leydt het Lichaem <rhyme label="c" type="m" corresp="#s5:l5">doodt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
