  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DIe de Vrouwkens aert <rhyme label="a" type="m">besiet</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">'t Is al <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Al wat hope ons kan <rhyme label="b" type="f">beloven</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Vrouwen woorden sijn maer <rhyme label="c" type="m">windt</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Ick <rhyme label="c" type="m" corresp="#s1:l4">bevindt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Eerst gelieft en haest weer <rhyme label="b" type="f" corresp="#s1:l3">vervlogen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Soo ontrauwich is 't <rhyme label="a" type="m">gedacht</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Midts ick <rhyme label="a" type="m" corresp="#s2:l1">acht</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dat wy 't laci soo <rhyme label="b" type="f">bevinden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dat het leste dat sy <rhyme label="c" type="m">sien</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Het moet <rhyme label="c" type="m" corresp="#s2:l4">geschien</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Is het eerst dat sy <rhyme label="b" type="f" corresp="#s2:l3">beginden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die op Vrouwen sich <rhyme label="a" type="m">betraut</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Hem <rhyme label="a" type="m" corresp="#s3:l1">beraut</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Quaelijck is 't woordt op de <rhyme label="b" type="f">lippen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Of het ander staet weer <rhyme label="c" type="m">voor</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Aende <rhyme label="c" type="m" corresp="#s3:l4">door</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Om licht-veerdigh uyt te <rhyme label="b" type="f" corresp="#s3:l3">slippen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Paelinck g'lathyt by de <rhyme label="a" type="m">stert</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Is hun <rhyme label="a" type="m" corresp="#s4:l1">hert</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Dus soo plagen sy de <rhyme label="b" type="f">herten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Want een Vrouwe licht <rhyme label="c" type="m">verkeert</rhyme>;</l>
        <l id="s4:l5" met="2" type="+-">Want sy <rhyme label="c" type="m" corresp="#s4:l4">sweert</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Raepen vreught in ons <rhyme label="b" type="f" corresp="#s4:l3">smerten</rhyme>.</l>
      </lg>
    </lg>
  </text>
