  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Weduw' hoort, ick koom u <rhyme label="a" type="f">schencken</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s1:l1">bedencken</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Met een Saligh <rhyme label="b" type="m">Nieuwe-Jaer</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">'k Bidd' u wilt het wel <rhyme label="c" type="f">beleven</rhyme></l>
        <l id="s1:l5" met="2" type="+-">'t Geen ick <rhyme label="c" type="f" corresp="#s1:l4">gheven</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Sal aen u, en volght het <rhyme label="b" type="m" corresp="#s1:l3">naer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ick wil in de naem des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s2:l2" met="2" type="+-">U <rhyme label="a" type="f" corresp="#s2:l1">vereeren</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Myrrhe, Wieroock, ende <rhyme label="b" type="m">Gout</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die de Wijse met <rhyme label="c" type="f">genoegen</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Godt <rhyme label="c" type="f" corresp="#s2:l4">opdroegen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Tot des Heeren <rhyme label="b" type="m" corresp="#s2:l3">onderhout</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Gout, ô Weduw! sal <rhyme label="a" type="f">verblijden</rhyme></l>
        <l id="s3:l2" met="2" type="+-">U in 't <rhyme label="a" type="f" corresp="#s3:l1">lijden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En in uwe armoedts <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die na 't droevich treurich <rhyme label="c" type="f">sterven</rhyme></l>
        <l id="s3:l5" met="2" type="+-">En na 't <rhyme label="c" type="f" corresp="#s3:l4">derven</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Van uw' man, is dickmaels <rhyme label="b" type="m" corresp="#s3:l3">groot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Als uw' Man is <rhyme label="a" type="f">overleden</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Hebt ghy <rhyme label="a" type="f" corresp="#s4:l1">reden</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Om te suchten, sucht vry <rhyme label="b" type="m">aen</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Want ghy hebt die geen <rhyme label="c" type="f">verlooren</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Die te <rhyme label="c" type="f" corresp="#s4:l4">vooren</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Was met sorgh voor u <rhyme label="b" type="m" corresp="#s4:l3">belae'n</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wilt het Wieroock oock <rhyme label="a" type="f">ontfangen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Met <rhyme label="a" type="f" corresp="#s5:l1">verlangen</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Want het Wieroock is 't <rhyme label="b" type="m">Gebedt</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Weduw'! gh' moet uw' tijdt <rhyme label="c" type="f">besteden</rhyme></l>
        <l id="s5:l5" met="2" type="+-">In <rhyme label="c" type="f" corresp="#s5:l4">gebeden</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Om t'ontgaen des Duyvels <rhyme label="b" type="m" corresp="#s5:l3">net</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">De gebeden die <rhyme label="a" type="f">beletten</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Satans <rhyme label="a" type="f" corresp="#s6:l1">netten</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En sy breecken all' sijn <rhyme label="b" type="m">kracht</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">De gebeden opwaerts <rhyme label="c" type="f">vliegen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">(Sonder <rhyme label="c" type="f" corresp="#s6:l4">liegen</rhyme>)</l>
        <l id="s6:l6" met="4" type="+-">G'lijck als Wieroock dach en <rhyme label="b" type="m" corresp="#s6:l3">nacht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'k Hoop dat ghy oock sult <rhyme label="a" type="f">aenvaerden</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">En in <rhyme label="a" type="f" corresp="#s7:l1">waerde</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Houden sult mijn darde <rhyme label="b" type="m">gift</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Dese gift was Myrrh.' <rhyme label="c" type="f">geheten</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Die te <rhyme label="c" type="f" corresp="#s7:l4">weten</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Tempt des lichaems vuylen <rhyme label="b" type="m" corresp="#s7:l3">drift</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Want dees Myrrhe, is de <rhyme label="a" type="f">dervingh</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s8:l1">verstervingh</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Van des vleys voorgaende <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Na de welck' ghy met <rhyme label="c" type="f">gedachten</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Niet meught <rhyme label="c" type="f" corresp="#s8:l4">trachten</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Sy moet zijn gantsch <rhyme label="b" type="m" corresp="#s8:l3">uytgeblust</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Bidt, ô Weduw'! Godt <rhyme label="a" type="f">Almachtich</rhyme></l>
        <l id="s9:l2" met="2" type="+-">Dat <rhyme label="a" type="f" corresp="#s9:l1">gedachtich</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Hy wil zijn u groot <rhyme label="b" type="m">verdriet</rhyme>:</l>
        <l id="s9:l4" met="4" type="+-">Seght, en roept, wilt mijne <rhyme label="c" type="f">oogen</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Heer <rhyme label="c" type="f" corresp="#s9:l4">afdroogen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Gunt dat mijne ziel u <rhyme label="b" type="m" corresp="#s9:l3">siet</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
