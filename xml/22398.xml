  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Van hoochde Hemels coem ick <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En bringhe u goede tijdinghe <rhyme label="a" type="m" corresp="#s1:l1">fier</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van dese tijding opt swerelts <rhyme label="b" type="m">hil</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Blijdelijck ick singhen ende spreken <rhyme label="b" type="m" corresp="#s1:l3">wil</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">V is een kindeken heden <rhyme label="a" type="m">gheboren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Van eender Maghet <rhyme label="a" type="m" corresp="#s2:l1">wtuercoren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Een kindeken soo teer en <rhyme label="b" type="m">fyn</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat wil u vruecht ende blijdtschap <rhyme label="b" type="m" corresp="#s2:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit is den Heere Christ onsen <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die wil u voeren wt tsondich <rhyme label="a" type="m" corresp="#s3:l1">slot</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">U salicheyt wil hy syn <rhyme label="b" type="m">alleyn</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En van allen sonden maken <rhyme label="b" type="m" corresp="#s3:l3">reyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy brengt u alle <rhyme label="a" type="m">salicheyt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die Godt den Vader heeft <rhyme label="a" type="m" corresp="#s4:l1">bereyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat ghy met ons int hemels <rhyme label="b" type="m">pleyn</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Sout leuen nu en altijt <rhyme label="b" type="m" corresp="#s4:l3">ghemeyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nu merckt wel op dat teecken <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die Cribbe en Wintdoecken seer <rhyme label="a" type="m" corresp="#s5:l1">slecht</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daer vint ghy dat kindeken <rhyme label="b" type="m">onuersaecht</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat al die wereldt behoudt en <rhyme label="b" type="m" corresp="#s5:l3">draecht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Des laet ons alle met blijschap <rhyme label="a" type="m">zaen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Met den Herderen daer nae <rhyme label="a" type="m" corresp="#s6:l1">gaen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Om te siene wat Godt ons heeft <rhyme label="b" type="m">verscheert</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Met synen lieuen Sone <rhyme label="b" type="m" corresp="#s6:l3">weert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Merckt op, mijn herte en siet daer <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Wat legt daer in dat <rhyme label="a" type="m" corresp="#s7:l1">Cribbekin</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Wie is dat soete <rhyme label="b" type="m">kindeken</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Het is dat lieue <rhyme label="b" type="m" corresp="#s7:l3">Jhesusken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sijt willecomme goet <rhyme label="a" type="m">Aduocaet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Den sondaer en hebt ghy niet <rhyme label="a" type="m" corresp="#s8:l1">versmaet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Ghy compt in armoede hier by <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Hoe sal ick hier af dancken <rhyme label="b" type="m" corresp="#s8:l3">dy</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Och Heere en Schepper aller <rhyme label="a" type="m">ding</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Hoe zijt ghy gheworden soo <rhyme label="a" type="m" corresp="#s9:l1">ghering</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dat ghy daer ligt op drooghen <rhyme label="b" type="m">Gras</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Twelck voetsel des Ossens en Esels <rhyme label="b" type="m" corresp="#s9:l3">was</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Al waere die wereldt noch eens so <rhyme label="a" type="m">breet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Met edelen Steen, ende Gout <rhyme label="a" type="m" corresp="#s10:l1">becleet</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">So waerse u toch veel te <rhyme label="b" type="m">cleyn</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Te syn u Wieghe en Bedde <rhyme label="b" type="m" corresp="#s10:l3">reyn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dyn Zijde ende Fluweel seer <rhyme label="a" type="m">fyn</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Grof Hoy, ende slechte Doecxkens <rhyme label="a" type="m" corresp="#s11:l1">syn</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Daer op ghy Coninck en God <rhyme label="b" type="m">altijt</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Domineert al waert u <rhyme label="b" type="m" corresp="#s11:l3">Hemelrijck</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Dat heeft alsoo belieuet <rhyme label="a" type="m">dy</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Om my die waerheyt te leeren <rhyme label="a" type="m" corresp="#s12:l1">vry</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Dat tswerelts macht, eere noch <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">By u niet en ghelt, niet en helpt, noch <rhyme label="b" type="m" corresp="#s12:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Och mijn hertelyck lief <rhyme label="a" type="m">Jhesusken</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Maeckt u een reyn saecht <rhyme label="a" type="m" corresp="#s13:l1">beddeken</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Om te rusten in myn herte <rhyme label="b" type="m">teer</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Dat ick u verghete <rhyme label="b" type="m" corresp="#s13:l3">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Op dat ick altijt <rhyme label="a" type="m">blydelijck</rhyme>, ::</l>
        <l id="s14:l2" met="4" type="-+">Mach springhen en singhen <rhyme label="a" type="m" corresp="#s14:l1">tydelijck</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Dat rechts sus, sus, sus, seer <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Met hertens lust ende goeden <rhyme label="b" type="m" corresp="#s14:l3">thoon</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Lof, eere, sy God in den hoochsten <rhyme label="a" type="m">throon</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Die ons schenckt synen eenighen <rhyme label="a" type="m" corresp="#s15:l1">Soon</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Daer af verhuecht die Enghelsche <rhyme label="b" type="m">schaer</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">En singhen u dit nieuwe <rhyme label="b" type="m" corresp="#s15:l3">Jaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
