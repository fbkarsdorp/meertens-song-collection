  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VVy dancken u o <rhyme label="a" type="f">Vader</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Dat ghy ons <rhyme label="a" type="f" corresp="#s1:l1">allegader</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Bewaert hebt desen <rhyme label="b" type="m">nacht</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat ghy, wanneer wy <rhyme label="c" type="f">sliepen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En groot perijkel <rhyme label="c" type="f" corresp="#s1:l4">liepen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gehouden hebt de <rhyme label="b" type="m" corresp="#s1:l3">wacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wilt (Heer!) dus alle <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Sorg voor u kind'ren <rhyme label="a" type="f" corresp="#s2:l1">dragen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Die op u staen, en <rhyme label="b" type="m">sien</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En ons in uwen <rhyme label="c" type="f">ermen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Voor alle quaedt <rhyme label="c" type="f" corresp="#s2:l4">beschermen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Die wy tot u maer <rhyme label="b" type="m" corresp="#s2:l3">vli'en</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Vergeef ons alle <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Om Iesu Christi <rhyme label="a" type="f" corresp="#s3:l1">wonden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En dier-vergoten <rhyme label="b" type="m">bloedt</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Geef dat wy al ons' <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ons self u <rhyme label="c" type="f" corresp="#s3:l4">overgeven</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In waer geloof,en <rhyme label="b" type="m" corresp="#s3:l3">boedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Gelijck het licht der <rhyme label="a" type="f">sonnen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Den nacht heeft <rhyme label="a" type="f" corresp="#s4:l1">overwonnen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En weer den dach <rhyme label="b" type="m">gebaert</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Laet so u Geest <rhyme label="c" type="f">vernielen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Het duyster onser <rhyme label="c" type="f" corresp="#s4:l4">zielen</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">En ons' verdorven <rhyme label="b" type="m" corresp="#s4:l3">aerdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Geef oock wat wy <rhyme label="a" type="f">beginnen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Om onse broodt te <rhyme label="a" type="f" corresp="#s5:l1">winnen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Voorspoedich zy <rhyme label="b" type="m">verricht</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Op dat wy ons <rhyme label="c" type="f">geneeren</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Met vromicheydt en <rhyme label="c" type="f" corresp="#s5:l4">eeren</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Voor uwen <rhyme label="b" type="m" corresp="#s5:l3">aengesicht</rhyme>.</l>
      </lg>
    </lg>
  </text>
