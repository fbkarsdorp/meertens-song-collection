    <melody>Het reed een ridder jagen uit aan gene heide groen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Een blijden moet in <rhyme label="a" type="m">teghenspoet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En doet ghen lyden <rhyme label="b" type="f">wiken</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Want hij bekent Dient hem <rhyme label="c" type="m">toesent</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En sel hem niet <rhyme label="b" type="f" corresp="#s1:l2">beswikent</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Want God altijt dieghene <rhyme label="d" type="m">trost</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die sijn bevaen in <rhyme label="e" type="f">liden</rhyme>;</l>
        <l id="s1:l7" met="4" type="+-">Hierom: hout moet in <rhyme label="f" type="m">wederspoet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Na liden coemt <rhyme label="e" type="f" corresp="#s1:l6">verbliden</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gheen mensche en levet nu <rhyme label="a" type="m">tertijt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Diet lijden mach <rhyme label="b" type="f">ontgaenghen</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Al schuut hijt oeck met alder <rhyme label="c" type="m">vlijt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Nochtans wort hy <rhyme label="b" type="f" corresp="#s2:l2">ghevanghen</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Wie nu tertijt al wort <rhyme label="d" type="m">castijt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ende hem der in can <rhyme label="e" type="f">liden</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Nae dit verdriet, dat hem <rhyme label="f" type="m">ghesciet</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Sel hij hierna <rhyme label="e" type="f" corresp="#s2:l6">verbliden</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy is ghevaen, wil <rhyme label="a" type="m">hijtverstaen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met liden <rhyme label="b" type="f">vastghebonden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die met ghenoechten, sonder <rhyme label="c" type="m">wederstaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghevallen sijn in <rhyme label="b" type="f" corresp="#s3:l2">sonden</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Want dat verdrieten henctes <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat hij dus coemt in <rhyme label="e" type="f">vresen</rhyme>;</l>
        <l id="s3:l7" met="4" type="+-">Maer dat ontspoet, dat hem <rhyme label="f" type="m">ghemoet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Leert hem oetmoedich <rhyme label="e" type="f" corresp="#s3:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die dan bekent, dat God hem <rhyme label="a" type="m">mint</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die Hi castijt met <rhyme label="b" type="f">liden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat loen, dat menre in <rhyme label="c" type="m">ondervint</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wat wil hijt dan <rhyme label="b" type="f" corresp="#s4:l2">vermyden</rhyme>?</l>
        <l id="s4:l5" met="4" type="-+">Hierom: met vlijt Aengaet den <rhyme label="d" type="m">strijt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Soe moghestu se gee <rhyme label="e" type="f">ghewinnen</rhyme>.</l>
        <l id="s4:l7" met="4" type="+-">Want wiet onspoetlijt met <rhyme label="f" type="m">oetmoet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Heeft stadich vrede van <rhyme label="e" type="f" corresp="#s4:l6">binnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hyerom: wes vroet! Och mensche, doet <rhyme label="a" type="m">guet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En wilt geen liden <rhyme label="b" type="f">wiken</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Want niement vry, gheloeftes <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En leeft op al <rhyme label="b" type="f" corresp="#s5:l2">aertrike</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Hierom: verdraecht, al <rhyme label="d" type="m">onversaecht</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ende en wilter niet op <rhyme label="e" type="f">achten</rhyme>;</l>
        <l id="s5:l7" met="4" type="+-">Worstu ghewontin uwen <rhyme label="f" type="m">gront</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Jhesus seltu <rhyme label="e" type="f" corresp="#s5:l6">versachten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dit self is claer ende daertoe <rhyme label="a" type="m">waer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Inder Scriftuer <rhyme label="b" type="f">bewesen</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Hem ghemoet menich <rhyme label="c" type="m">wederspoet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die Gods ghevaen sel <rhyme label="b" type="f" corresp="#s6:l2">wesen</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Want int ghemeyn, den herten <rhyme label="d" type="m">reyn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Soe veel op valt te <rhyme label="e" type="f">lijden</rhyme>:</l>
        <l id="s6:l7" met="4" type="+-">Want die weldaet, die wort int <rhyme label="f" type="m">quaet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Verkeert, tot allen <rhyme label="e" type="f" corresp="#s6:l6">tijden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Een troestelijck woert Heb ic <rhyme label="a" type="m">ghehoert</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dat doet my vrolijck <rhyme label="b" type="f">lijden</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Dat God loent ende namaels <rhyme label="c" type="m">croent</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Die vromelike <rhyme label="b" type="f" corresp="#s7:l2">strijden</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Hierom: wes vro ende doet <rhyme label="d" type="m">alsoe</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Laet lyden <rhyme label="e" type="f">overgangen</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Daer vroechdencroen int hemels <rhyme label="f" type="m">troen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Sel hi daervoer <rhyme label="e" type="f" corresp="#s7:l6">ontfangen</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
