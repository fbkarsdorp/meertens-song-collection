  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HOlterhoek, hoe klein gy <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Gy maakt my al mee <rhyme label="a" type="m" corresp="#s1:l1">verblijdt</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Als gy <rhyme label="b" type="f">nadert</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s1:l3">vergadert</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Daar ik in uw buerte <rhyme label="c" type="m">maar</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Kom besoeken d'een of <rhyme label="c" type="m" corresp="#s1:l5">d'aar</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Schoon gy ook maer, met u <rhyme label="a" type="m">all'</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Twee of drie waart in <rhyme label="a" type="m" corresp="#s2:l1">getal</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">'k Gaaf u <rhyme label="b" type="f">eere</rhyme>,</l>
        <l id="s2:l4" met="2" type="+-">Mits de <rhyme label="b" type="f" corresp="#s2:l3">Heere</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Selfs tot twee of drie <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Geern' in 't midden wenscht te <rhyme label="c" type="m" corresp="#s2:l5">treen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Of gy, in geringe <rhyme label="a" type="m">staat</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dus eenvoudig henen <rhyme label="a" type="m" corresp="#s3:l1">gaat</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">'k Acht u <rhyme label="b" type="f">echter</rhyme></l>
        <l id="s3:l4" met="2" type="+-">Niet te <rhyme label="b" type="f" corresp="#s3:l3">slechter</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Mits ik my sorgvuldich <rhyme label="c" type="m">wacht</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Dat ik noit het klein <rhyme label="c" type="m" corresp="#s3:l5">veracht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'k Sing u mee een Liedtje <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als ik d'ander buerten <rhyme label="a" type="m" corresp="#s4:l1">doe</rhyme>.</l>
        <l id="s4:l3" met="2" type="+-"><rhyme label="b" type="f">Holterhoekje</rhyme>,</l>
        <l id="s4:l4" met="2" type="+-">Neemt dit <rhyme label="b" type="f" corresp="#s4:l3">Boekje</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Vol van geestelijck <rhyme label="c" type="m">gesank</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Door my selfs gemaeckt, in <rhyme label="c" type="m" corresp="#s4:l5">dank</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Laat het noit weer van u <rhyme label="a" type="m">gaan</rhyme>.</l>
        <l id="s5:l2" met="4" type="+-">Kont gy 't selve niet <rhyme label="a" type="m" corresp="#s5:l1">verstaan</rhyme>,</l>
        <l id="s5:l3" met="2" type="+-">Of niet <rhyme label="b" type="f">lesen</rhyme>;</l>
        <l id="s5:l4" met="2" type="+-">'t Sal doch <rhyme label="b" type="f" corresp="#s5:l3">wesen</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Tot bewijs aan <rhyme label="c" type="m">ieder-een</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Hoe 'k u hertlik min en <rhyme label="c" type="m" corresp="#s5:l5">meen</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wat gy selve niet en <rhyme label="a" type="m">vat</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Sal de Jeugt uit onse <rhyme label="a" type="m" corresp="#s6:l1">Stadt</rhyme></l>
        <l id="s6:l3" met="2" type="+-">U wel <rhyme label="b" type="f">seggen</rhyme>,</l>
        <l id="s6:l4" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s6:l3">uitleggen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Soo gy my en haer <rhyme label="c" type="m">besoek</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Geern' hebt in den <rhyme label="c" type="m" corresp="#s6:l5">Holterhoek</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Schoon uw buert de kleinste <rhyme label="a" type="m">zy</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">'t Komt uit ander buerten <rhyme label="a" type="m" corresp="#s7:l1">by</rhyme>,</l>
        <l id="s7:l3" met="2" type="+-">En vermeert <rhyme label="b" type="f">u</rhyme>.</l>
        <l id="s7:l4" met="2" type="+-">Elk begeert <rhyme label="b" type="f" corresp="#s7:l3">u</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Tot geselschap aan zijn <rhyme label="c" type="m">zijdt</rhyme>.</l>
        <l id="s7:l6" met="4" type="+-">Maakt de plaats vry ruim en <rhyme label="c" type="m" corresp="#s7:l5">wijdt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'t Is een lust om aan te <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Hoes', in menigt, tot u <rhyme label="a" type="m" corresp="#s8:l1">vlien</rhyme>.</l>
        <l id="s8:l3" met="2" type="+-">Stoelen, <rhyme label="b" type="f">banken</rhyme>,</l>
        <l id="s8:l4" met="2" type="+-">Leeders, <rhyme label="b" type="f" corresp="#s8:l3">planken</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">En al sulk gezeet wordt <rhyme label="c" type="m">dan</rhyme></l>
        <l id="s8:l6" met="4" type="+-">In der haast soo vol als 't <rhyme label="c" type="m" corresp="#s8:l5">kan</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Komen wy aldus tot <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Weest dan ook van ons niet <rhyme label="a" type="m" corresp="#s9:l1">schuw</rhyme>;</l>
        <l id="s9:l3" met="2" type="+-">Komt tot <rhyme label="b" type="f">d'andren</rhyme></l>
        <l id="s9:l4" met="2" type="+-">Met <rhyme label="b" type="f" corresp="#s9:l3">malkandren</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Wordt maar ergens hier <rhyme label="c" type="m">ontrent</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Ons by-een-komst u <rhyme label="c" type="m" corresp="#s9:l5">bekent</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Maar maakt boven-al uw <rhyme label="a" type="m">werk</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Van te komen in de <rhyme label="a" type="m" corresp="#s10:l1">Kerk</rhyme>.</l>
        <l id="s10:l3" met="2" type="+-">Loopt niet <rhyme label="b" type="f">verder</rhyme>,</l>
        <l id="s10:l4" met="2" type="+-">Want uw <rhyme label="b" type="f" corresp="#s10:l3">herder</rhyme></l>
        <l id="s10:l5" met="4" type="+-">Wijst u aan, waar Jesus <rhyme label="c" type="m">weidt</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">En waar hy sijn kudde <rhyme label="c" type="m" corresp="#s10:l5">leidt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Jesus roept u met sijn <rhyme label="a" type="m">stem</rhyme>:</l>
        <l id="s11:l2" met="4" type="+-">Hoort gy die, en volgt gy <rhyme label="a" type="m" corresp="#s11:l1">hem</rhyme>,</l>
        <l id="s11:l3" met="2" type="+-">Dus <rhyme label="b" type="f">genegen</rhyme>,</l>
        <l id="s11:l4" met="2" type="+-">Op sijn <rhyme label="b" type="f" corresp="#s11:l3">wegen</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Soo en gaet gy nimmer <rhyme label="c" type="m">mis</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Noch verdwaalt in <rhyme label="c" type="m" corresp="#s11:l5">duisternis</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Blijft door liefde t'saam <rhyme label="a" type="m">gevoegt</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">En met Christus <rhyme label="a" type="m" corresp="#s12:l1">vergenoegt</rhyme>;</l>
        <l id="s12:l3" met="2" type="+-">Wilt hem <rhyme label="b" type="f">kennen</rhyme>,</l>
        <l id="s12:l4" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s12:l3">na-rennen</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">'s Levens woort heeft Hy <rhyme label="c" type="m">alleen</rhyme>:</l>
        <l id="s12:l6" met="4" type="+-">Waar soudt gy dan anders <rhyme label="c" type="m" corresp="#s12:l5">heen</rhyme> ?</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Hoopt op Hem, en loopt om <rhyme label="a" type="m">prijs</rhyme>.</l>
        <l id="s13:l2" met="4" type="+-">Soekt hem niet om d'aardsche <rhyme label="a" type="m" corresp="#s13:l1">spijs</rhyme>,</l>
        <l id="s13:l3" met="2" type="+-">Hy wil <rhyme label="b" type="f">geven</rhyme></l>
        <l id="s13:l4" met="2" type="+-">Spijs ten <rhyme label="b" type="f" corresp="#s13:l3">leven</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Ja is selfs het levend <rhyme label="c" type="m">broot</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Dat ons vry maakt van den <rhyme label="c" type="m" corresp="#s13:l5">doot</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Wat de werelt hoog <rhyme label="a" type="m">weerdeert</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Schijnt te klein voor uw <rhyme label="a" type="m" corresp="#s14:l1">begeert'</rhyme>.</l>
        <l id="s14:l3" met="2" type="+-">Christum <rhyme label="b" type="f">winnen</rhyme></l>
        <l id="s14:l4" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s14:l3">beminnen</rhyme></l>
        <l id="s14:l5" met="4" type="+-">Is het allerhoogste <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Daar men sterk na trachten <rhyme label="c" type="m" corresp="#s14:l5">moet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Wilt gy rijk zijn en <rhyme label="a" type="m">geacht</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Boven alle staat en <rhyme label="a" type="m" corresp="#s15:l1">macht</rhyme>,</l>
        <l id="s15:l3" met="2" type="+-">Daar de <rhyme label="b" type="f">menschen</rhyme></l>
        <l id="s15:l4" met="2" type="+-">Hier na <rhyme label="b" type="f" corresp="#s15:l3">wenschen</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">Acht al 't aardsch' als drek en <rhyme label="c" type="m">slijk</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">En staat na Godts <rhyme label="c" type="m" corresp="#s15:l5">Koninkrijk</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Denkt, dat Godt en wijse <rhyme label="a" type="m">lien</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Op uitwend'ge glans niet <rhyme label="a" type="m" corresp="#s16:l1">sien</rhyme>.</l>
        <l id="s16:l3" met="2" type="+-">Elk <rhyme label="b" type="f">rechtveerdig</rhyme></l>
        <l id="s16:l4" met="2" type="+-">Is meer <rhyme label="b" type="f" corresp="#s16:l3">weerdig</rhyme></l>
        <l id="s16:l5" met="4" type="+-">Dan sijn naasten, die te <rhyme label="c" type="m">hoog</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Door sijn waan en trotsheit <rhyme label="c" type="m" corresp="#s16:l5">vloog</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">'k Hou my selfs op 't hoogst <rhyme label="a" type="m">vereert</rhyme>,</l>
        <l id="s17:l2" met="4" type="+-">Als ik met u ben <rhyme label="a" type="m" corresp="#s17:l1">verneert</rhyme>,</l>
        <l id="s17:l3" met="2" type="+-">En wy <rhyme label="b" type="f">t'samen</rhyme></l>
        <l id="s17:l4" met="2" type="+-">Iet <rhyme label="b" type="f" corresp="#s17:l3">beramen</rhyme>,</l>
        <l id="s17:l5" met="4" type="+-">Daar Godts lof en <rhyme label="c" type="m">heerlikheit</rhyme></l>
        <l id="s17:l6" met="4" type="+-">Lieflijk door wordt <rhyme label="c" type="m" corresp="#s17:l5">uitgebreidt</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">'k Wandel niet in iet, dat <rhyme label="a" type="m">my</rhyme></l>
        <l id="s18:l2" met="4" type="+-">Al te groot en wonder <rhyme label="a" type="m" corresp="#s18:l1">zy</rhyme>.</l>
        <l id="s18:l3" met="2" type="+-">U te <rhyme label="b" type="f">stichten</rhyme>,</l>
        <l id="s18:l4" met="2" type="+-"><rhyme label="b" type="f" corresp="#s18:l3">T'onderrichten</rhyme>,</l>
        <l id="s18:l5" met="4" type="+-">Of te troosten, met Godts <rhyme label="c" type="m">woort</rhyme>,</l>
        <l id="s18:l6" met="4" type="+-">Is de vreucht, die my <rhyme label="c" type="m" corresp="#s18:l5">bekoort</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Dat een aar verheven <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s19:l2" met="4" type="+-">Ik wil met u nederig <rhyme label="a" type="m" corresp="#s19:l1">zijn</rhyme>,</l>
        <l id="s19:l3" met="2" type="+-">Liever <rhyme label="b" type="f">singen</rhyme></l>
        <l id="s19:l4" met="2" type="+-">Met <rhyme label="b" type="f" corresp="#s19:l3">geringen</rhyme>,</l>
        <l id="s19:l5" met="4" type="+-">Dan na hooge dingen <rhyme label="c" type="m">staan</rhyme>,</l>
        <l id="s19:l6" met="4" type="+-">Die mijn ampt niet aan en <rhyme label="c" type="m" corresp="#s19:l5">gaan</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Maar leeft gy ook dus in 't <rhyme label="a" type="m">kleen</rhyme></l>
        <l id="s20:l2" met="4" type="+-">Met uw eygen staat te <rhyme label="a" type="m" corresp="#s20:l1">vreen</rhyme>.</l>
        <l id="s20:l3" met="2" type="+-">'t Groot en <rhyme label="b" type="f">heerlijk</rhyme></l>
        <l id="s20:l4" met="2" type="+-">Schijnt <rhyme label="b" type="f" corresp="#s20:l3">begeerlijk</rhyme>,</l>
        <l id="s20:l5" met="4" type="+-">Maar veel moeite, sorg, en <rhyme label="c" type="m">last</rhyme>,</l>
        <l id="s20:l6" met="4" type="+-">Isser in 't gemeen aan <rhyme label="c" type="m" corresp="#s20:l5">vast</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Die sich na geringhe <rhyme label="a" type="m">stant</rhyme>,</l>
        <l id="s21:l2" met="4" type="+-">Buiten nijdt en strijdt, op 't <rhyme label="a" type="m" corresp="#s21:l1">lant</rhyme>,</l>
        <l id="s21:l3" met="2" type="+-">Met <rhyme label="b" type="f">genoegen</rhyme>,</l>
        <l id="s21:l4" met="2" type="+-">Weet te <rhyme label="b" type="f" corresp="#s21:l3">voegen</rhyme>,</l>
        <l id="s21:l5" met="4" type="+-">Isser vry wat beter <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s21:l6" met="4" type="+-">Kond' hy sijn geluck <rhyme label="c" type="m" corresp="#s21:l5">verstaan</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Zijt gy klein, zijt rein te <rhyme label="a" type="m">saam</rhyme>,</l>
        <l id="s22:l2" met="4" type="+-">En wordt groot en hoog van <rhyme label="a" type="m" corresp="#s22:l1">naam</rhyme></l>
        <l id="s22:l3" met="2" type="+-">Door uw <rhyme label="b" type="f">handel</rhyme></l>
        <l id="s22:l4" met="2" type="+-">En uw <rhyme label="b" type="f" corresp="#s22:l3">wandel</rhyme>.</l>
        <l id="s22:l5" met="4" type="+-">Heilige Godtvrucht'ge <rhyme label="c" type="m">lien</rhyme></l>
        <l id="s22:l6" met="4" type="+-">Zijn meest heerlijk en <rhyme label="c" type="m" corresp="#s22:l5">gesien</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="+-">Heiligheit is in der <rhyme label="a" type="m">daat</rhyme></l>
        <l id="s23:l2" met="4" type="+-">Voor Godts huis het best <rhyme label="a" type="m" corresp="#s23:l1">cieraat</rhyme>.</l>
        <l id="s23:l3" met="2" type="+-">Die vercier' <rhyme label="b" type="f">u</rhyme>,</l>
        <l id="s23:l4" met="2" type="+-">En Godt stier' <rhyme label="b" type="f" corresp="#s23:l3">u</rhyme></l>
        <l id="s23:l5" met="4" type="+-">Door sijn woort en Geest <rhyme label="c" type="m">voortaan</rhyme>,</l>
        <l id="s23:l6" met="4" type="+-">Om sijn heil'ge wegh te <rhyme label="c" type="m" corresp="#s23:l5">gaan</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="+-">Soo sal ik, mijn leven <rhyme label="a" type="m">lank</rhyme>,</l>
        <l id="s24:l2" met="4" type="+-">Met een dankbaar <rhyme label="a" type="m" corresp="#s24:l1">lofgeklank</rhyme>,</l>
        <l id="s24:l3" met="2" type="+-">Godt daar <rhyme label="b" type="f">boven</rhyme></l>
        <l id="s24:l4" met="2" type="+-">Hertlik <rhyme label="b" type="f" corresp="#s24:l3">loven</rhyme></l>
        <l id="s24:l5" met="4" type="+-">Om uw yver, liefd', en <rhyme label="c" type="m">deugt</rhyme>,</l>
        <l id="s24:l6" met="4" type="+-">Daar gy meest my door <rhyme label="c" type="m" corresp="#s24:l5">verheugt</rhyme>.</l>
      </lg>
    </lg>
  </text>
