<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11773</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Het vinnige stralen van de zon</melody>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE oogen nae de deughd <rhyme label="a" type="m">gestiert</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Zijn spiegels van ons <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Voor 't oogh, waerom God alles <rhyme label="a" type="m" corresp="#s1:l1">ciert</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Heeft hy 't vermaeck <rhyme label="b" type="f" corresp="#s1:l2">gegeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Eylaes! wat is 't een wanckel <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wanneer ons oogen <rhyme label="b" type="f">speelen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Wanneer sy loncken door 't <rhyme label="a" type="m" corresp="#s2:l1">gesicht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En onse sinnen <rhyme label="b" type="f" corresp="#s2:l2">streelen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'t Zijn vensters in de geyle <rhyme label="a" type="m">Min</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">'t Zijn fackels die daer <rhyme label="b" type="f">branden</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Wanneer het beeldt daer flonckert <rhyme label="a" type="m" corresp="#s3:l1">in</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dan voeren s' ons tot <rhyme label="b" type="f" corresp="#s3:l2">schande</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Is 't wonder dat een slecht <rhyme label="a" type="m">verstand</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Door 't flick'ren wordt <rhyme label="b" type="f">bedrogen</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">O neen! een 's Konincks herte <rhyme label="a" type="m" corresp="#s4:l1">brand</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Door 't stralen van sijn <rhyme label="b" type="f" corresp="#s4:l2">oogen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een Man, een Man nae Godes <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die laet sich <rhyme label="b" type="f">overwinnen</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Die van de lust betoovert <rhyme label="a" type="m" corresp="#s5:l1">werdt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Door 't tocklen van de <rhyme label="b" type="f" corresp="#s5:l2">sinnen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy sagh de schoone <rhyme label="a" type="m">Batzeba</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">In 't silv're stroomtje <rhyme label="b" type="f">baden</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">De oogen, toortsen van sijn <rhyme label="a" type="m" corresp="#s6:l1">schae</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die hebben hem <rhyme label="b" type="f" corresp="#s6:l2">verraden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy locktse tot onkuysche <rhyme label="a" type="m">Min</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En schent haer suyv're <rhyme label="b" type="f">leden</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Eens anders vrouw. Verdoolde <rhyme label="a" type="m" corresp="#s7:l1">sin</rhyme>!</l>
        <l id="s7:l4" met="3" type="-+">Hoe streefdy tegens <rhyme label="b" type="f" corresp="#s7:l2">reden</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als 't eene quaed nu was <rhyme label="a" type="m">geschiet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Verdubbelt hy sijn <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Uriam, haren man, hy <rhyme label="a" type="m" corresp="#s8:l1">liet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Voor in de spitse <rhyme label="b" type="f" corresp="#s8:l2">wonden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De Man is dood. De Vrouwe <rhyme label="a" type="m">treurt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Hy wil het stuck <rhyme label="b" type="f">verheelen</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Maer Nathan 's Koninghs herte <rhyme label="a" type="m" corresp="#s9:l1">scheurt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En dreyght hem Godts <rhyme label="b" type="f" corresp="#s9:l2">bevelen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hy pranght hem door <rhyme label="a" type="m">gelijckenis</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Waer door hy wert <rhyme label="b" type="f">verslagen</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">Van 't Schaepken, dat genomen <rhyme label="a" type="m" corresp="#s10:l1">is</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">En hy begint te <rhyme label="b" type="f" corresp="#s10:l2">klagen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hy schreyt o Heer! ick heb <rhyme label="a" type="m">misdaen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">En uwen toorn <rhyme label="b" type="f">ontsteecken</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Wilt met my niet in 't oordeel <rhyme label="a" type="m" corresp="#s11:l1">gaen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">'k Ben van mijn Godt <rhyme label="b" type="f" corresp="#s11:l2">geweecken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Door 't oogh is Eva eerst <rhyme label="a" type="m">vervoert</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Jae Stercke en oock <rhyme label="b" type="f">Wijse</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Betoomt u lust, hoe 't oogh oock <rhyme label="a" type="m" corresp="#s12:l1">loert</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">En hebt voor 't quaed <rhyme label="b" type="f" corresp="#s12:l2">afgrijsen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">‘Uw' oogen wendt van <rhyme label="a" type="m">ydelheyt</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">‘En stierts' op 's Heeren <rhyme label="b" type="f">wegen</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">‘Op dat u lust noch waen <rhyme label="a" type="m" corresp="#s13:l1">verleyt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">‘Maer steets mooght deughde <rhyme label="b" type="f" corresp="#s13:l2">plegen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
