  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wat word door de Liefde niet <rhyme label="a" type="m">verrigt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gelyk ik uw zal <rhyme label="b" type="f">verhalen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hoe menig mensch vergeet zyn <rhyme label="a" type="m" corresp="#s1:l1">pligt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Als hy niet kan <rhyme label="b" type="f" corresp="#s1:l2">Zegepralen</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">Ik minde in myn jonge <rhyme label="c" type="m">jeugd</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Een Meisje schoon van <rhyme label="d" type="f">waarde</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Genoot ook by die zalige <rhyme label="c" type="m" corresp="#s1:l5">vreugd</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Den Hemel op deez' <rhyme label="d" type="f" corresp="#s1:l6">Aarde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Wapens van ons <rhyme label="a" type="m">Nederland</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dien ik voorheen <rhyme label="b" type="f">waardeerde</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Verliet ik snood, o! welk een <rhyme label="a" type="m" corresp="#s2:l1">schand</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Hetgeen my zelfs <rhyme label="b" type="f" corresp="#s2:l2">onteerde</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Op 't hooren van een <rhyme label="c" type="m">Echtverbond</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hetgeen myn hart deed <rhyme label="d" type="f">breken</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Begaf ik my op 't zelfde <rhyme label="c" type="m" corresp="#s2:l5">stond</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Om valsche min te <rhyme label="d" type="f" corresp="#s2:l6">wreken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ik disserteerde van myn <rhyme label="a" type="m">post</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En ging my stil <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ik dacht of 't ook myn leven <rhyme label="a" type="m" corresp="#s3:l1">kost</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Zal ik na haar gaan <rhyme label="b" type="f" corresp="#s3:l2">streven</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Geen Dood, geen Hel, noch <rhyme label="c" type="m">Duisternis</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Kan my van haar <rhyme label="d" type="f">ontrekken</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">En zoo haar min dan zeker <rhyme label="c" type="m" corresp="#s3:l5">is</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Zal 't tot myn ongeluk <rhyme label="d" type="f" corresp="#s3:l6">strekken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Helaas! myn wil waar <rhyme label="a" type="m">ydelheid</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En bragt my in 't <rhyme label="b" type="f">lyden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Het regt van Neerland dat reeds <rhyme label="a" type="m" corresp="#s4:l1">pleit</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Doet my met rampen <rhyme label="b" type="f" corresp="#s4:l2">stryden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Weldra wierd ik <rhyme label="c" type="m">gearresteerd</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En voor verbroken <rhyme label="d" type="f">Eeden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Veroordeeld en <rhyme label="c" type="m" corresp="#s4:l5">gecondemneerd</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Door President en <rhyme label="d" type="f" corresp="#s4:l6">Leden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een diepe Kerker waar myn <rhyme label="a" type="m">lot</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ketens, boeijens, <rhyme label="b" type="f">banden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daar moet ik, Hemel! groote <rhyme label="a" type="m" corresp="#s5:l1">God</rhyme>!</l>
        <l id="s5:l4" met="3" type="-+">In leven, welk een <rhyme label="b" type="f" corresp="#s5:l2">schanden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Hier, waar het lot beslist der <rhyme label="c" type="m">jeugd</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Met ramp en smart te <rhyme label="d" type="f">strijden</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Verkeerde toen die zoete <rhyme label="c" type="m" corresp="#s5:l5">vreugd</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Tot meerdering van myn <rhyme label="d" type="f" corresp="#s5:l6">lyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Rampzalig lot, o valsche <rhyme label="a" type="m">min</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">Moest ik een Dierbaar <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Slechts voor een Aardsche <rhyme label="a" type="m" corresp="#s6:l1">gezellin</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Aan 's Regters uitspraak <rhyme label="b" type="f" corresp="#s6:l2">geven</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Ik minde haar opregt en <rhyme label="c" type="m">teer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Als de Appelen myner <rhyme label="d" type="f">Oogen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">En dagt dien Eed breek ik niet <rhyme label="c" type="m" corresp="#s6:l5">meer</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Haar tong die kent geen <rhyme label="d" type="f" corresp="#s6:l6">logen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Doch koest'rend vuur van bleeke <rhyme label="a" type="m">gloed</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Waar steeds aan het <rhyme label="b" type="f">verdoven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">U schalksche blik drenkt steeds myn <rhyme label="a" type="m" corresp="#s7:l1">bloed</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En heeft myn heil <rhyme label="b" type="f" corresp="#s7:l2">verschoven</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Ik worstel met de wreede <rhyme label="c" type="m">dood</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En hoop hy zal my <rhyme label="d" type="f">naderen</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Het smaken van dit Kerker <rhyme label="c" type="m" corresp="#s7:l5">brood</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Verstyft my 't bloed in <rhyme label="d" type="f" corresp="#s7:l6">d'adren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dus jonkheid als de list der <rhyme label="a" type="m">Slang</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Het Gift by uw doet <rhyme label="b" type="f">gisten</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Of op een roode Roose <rhyme label="a" type="m" corresp="#s8:l1">Wang</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Uw wensch waant te <rhyme label="b" type="f" corresp="#s8:l2">beslissen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Bedaard dan, want de <rhyme label="c" type="m">vleijery</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Der Vrouwen, doet uw <rhyme label="d" type="f">lyden</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">En soms de vreugd der <rhyme label="c" type="m" corresp="#s8:l5">Maatschappy</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Verkeeren in bitter <rhyme label="d" type="f" corresp="#s8:l6">lyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
