    <melody>Als ons de winter gaat van heen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Broeders laet ons met <rhyme label="a" type="m">vrolijckheyt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Verheughen en zijn <rhyme label="a" type="m" corresp="#s1:l1">verblijdt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Laet ons tot strijden wesen <rhyme label="a" type="m" corresp="#s1:l1">bereyt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In deser werelt <rhyme label="a" type="m" corresp="#s1:l1">wijt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Niet alleen teghens vleesch end’ <rhyme label="b" type="m">bloet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Maer teghen de werelts <rhyme label="c" type="f">Rhegenten</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hierom Godts harnas <rhyme label="b" type="m" corresp="#s1:l5">aendoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als vrome Christene <rhyme label="a" type="m">knechten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Stelt u hier in den <rhyme label="a" type="m" corresp="#s2:l1">strijt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ghewapent als de <rhyme label="a" type="m" corresp="#s2:l1">oprechten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wilt nemen waer uwen <rhyme label="a" type="m" corresp="#s2:l1">tijt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Neemt dat gheloof tot eenen <rhyme label="b" type="m">Schilt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Godts woordt tot eenen <rhyme label="c" type="f">Sweerde</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Teghen de vyanden <rhyme label="b" type="m" corresp="#s2:l5">wilt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die hem aldus set in de <rhyme label="a" type="m">weer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die sal verwinnen seer <rhyme label="a" type="m" corresp="#s3:l1">wel</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Al quamen sijn vyanden noch soo <rhyme label="a" type="m" corresp="#s3:l1">seer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Iae de Poorten al van der <rhyme label="a" type="m" corresp="#s3:l1">Hel</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Wy sullense verslinden ghelijck als <rhyme label="b" type="m">Broot</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat volck van dese <rhyme label="c" type="f">Landen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Vreest niet al zijnse <rhyme label="b" type="m" corresp="#s3:l5">groot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schickt u, schikt u end’ maeckt u <rhyme label="a" type="m">voort</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Te gaen nae ‘t beloofde <rhyme label="a" type="m" corresp="#s4:l1">landt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wilt dringhen door de enghe <rhyme label="a" type="m" corresp="#s4:l1">Poort</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Den strijdt komt u te <rhyme label="a" type="m" corresp="#s4:l1">handt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Vyer end’ water is u <rhyme label="b" type="m">voor-ghestelt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Maer de Stadt die is seer <rhyme label="c" type="f">schoon</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Die neemt in met <rhyme label="b" type="m" corresp="#s4:l5">ghewelt</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En waert ons niet te vooren <rhyme label="a" type="m">gheseyt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wy mochten verwondert <rhyme label="a" type="m" corresp="#s5:l1">zijn</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hoe Godt door sijne <rhyme label="a" type="m" corresp="#s5:l1">ghenadigheyt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Sijnen uyt-verkooren <rhyme label="a" type="m" corresp="#s5:l1">sijn</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Beproeft als gout in een <rhyme label="b" type="m">Forneys</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Hierom soo laet ons <rhyme label="c" type="f">aflegghen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">En haten den rock des <rhyme label="b" type="m" corresp="#s5:l5">vleys</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghedenckt o Broeders <rhyme label="a" type="m">allegaer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Op uwe beloften seer <rhyme label="a" type="m" corresp="#s6:l1">schoon</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En laet u hert niet zijn so <rhyme label="a" type="m" corresp="#s6:l1">swaer</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Verliest niet uwe <rhyme label="a" type="m" corresp="#s6:l1">Kroon</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Blijft in de wegh des Heeren <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">U Koningh sal haest <rhyme label="c" type="f">verschijnen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Siet dat ghy daer op <rhyme label="b" type="m" corresp="#s6:l5">past</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Des Heeren dach sal komen <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als een Dief in der <rhyme label="a" type="m" corresp="#s7:l1">nacht</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">In welcken de Hemelen sullen <rhyme label="a" type="m" corresp="#s7:l1">vergaen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Met gheluyt, ende grooter <rhyme label="a" type="m" corresp="#s7:l1">kraght</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">D’Elementen sullen versmelten <rhyme label="b" type="m">fier</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">De aerde en al haer <rhyme label="c" type="f">wercken</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Vergaen sal met den <rhyme label="b" type="m" corresp="#s7:l5">vyer</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als nu den dach snel als een <rhyme label="a" type="m">strick</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Sal komen op ‘t heel <rhyme label="a" type="m" corresp="#s8:l1">Aertrijck</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Seer snel in eenen <rhyme label="a" type="m" corresp="#s8:l1">Ooghenblick</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Siet Broeders alle <rhyme label="a" type="m" corresp="#s8:l1">ghelijck</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Hoe moesten wy als dan voor alle <rhyme label="b" type="m">dingh</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Geschickt zijn, nae Petrus <rhyme label="c" type="f">woorden</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Met een goede <rhyme label="b" type="m" corresp="#s8:l5">wandelingh</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hy sal sijn uyt-verkoren <rhyme label="a" type="m">gheslacht</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Verstroyt hier ende <rhyme label="a" type="m" corresp="#s9:l1">daer</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">By een vergaren, hier wel op <rhyme label="a" type="m" corresp="#s9:l1">acht</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Al met de Basuynen <rhyme label="a" type="m" corresp="#s9:l1">voorwaer</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Och welcken vreught is haer <rhyme label="b" type="m">ontrent</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Iae wat een Kroon der <rhyme label="c" type="f">eeren</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Die Christum hier <rhyme label="b" type="m" corresp="#s9:l5">bekent</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghy Heylighen singht looft den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Ende sijnen naem hier <rhyme label="a" type="m" corresp="#s10:l1">prijst</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Komt laet ons bidden en vallen <rhyme label="a" type="m" corresp="#s10:l1">neer</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Hem alle deught <rhyme label="a" type="m" corresp="#s10:l1">bewijst</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Zijt ghetroost ende <rhyme label="b" type="m">onversaeght</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Ghedenckt der grooter <rhyme label="c" type="f">liefden</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Die Christus tot u <rhyme label="b" type="m" corresp="#s10:l5">draeght</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O Prinse Godt aller Prinsen <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">O Godt ghetrouwe <rhyme label="a" type="m" corresp="#s11:l1">Heylandt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">U arme Schaepkens doch wel <rhyme label="a" type="m" corresp="#s11:l1">behoet</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Bewaert ons in uwer <rhyme label="a" type="m" corresp="#s11:l1">handt</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">O Godt ghy zijt alleen ons <rhyme label="b" type="m">toe-versicht</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Gheeft ons een gheest seer <rhyme label="c" type="f">vyerigh</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Want ghy zijt ons eeuwighe <rhyme label="b" type="m" corresp="#s11:l5">licht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
