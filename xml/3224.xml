    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Gheluckigh die een reyn <rhyme label="a" type="m">ghewiss'</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van Godt almachtig heeft <rhyme label="b" type="f">verkregen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En die uyt d'aerdtsche <rhyme label="a" type="m" corresp="#s1:l1">duysternis</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Bereyckt 'et licht van Godes <rhyme label="b" type="f" corresp="#s1:l2">weghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En daerom bid ick, Heyligh <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Liefhebber van een deftigh <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Gun dat ick staegh nae u <rhyme label="a" type="m" corresp="#s2:l1">Ghebodt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Mach met vermaeck en liefde <rhyme label="b" type="f" corresp="#s2:l2">streven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Leyt, Heer, mijn gang en mijn <rhyme label="a" type="m">gemoet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En stuert mijn licht-verleybre <rhyme label="b" type="f">sinnen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Nae 't eenigh, eeuwigh <rhyme label="a" type="m" corresp="#s3:l1">Opper-goedt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Op dat ick Christo mach <rhyme label="b" type="f" corresp="#s3:l2">gewinnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al tree ick somtijdts uyt de <rhyme label="a" type="m">baen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die my van u is <rhyme label="b" type="f">voorgheschreven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Siet, Heer, mijn jeucht en swackheyt <rhyme label="a" type="m" corresp="#s4:l1">aen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En wilt 'et my uyt gunts <rhyme label="b" type="f" corresp="#s4:l2">vergheven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sterckt mijn geloof en swacke <rhyme label="a" type="m">geest</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En stort in my veel goe <rhyme label="b" type="f">gedachten</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">En soo een Ziel die voor u <rhyme label="a" type="m" corresp="#s5:l1">vreest</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Yet meer dan 't Hemels te <rhyme label="b" type="f" corresp="#s5:l2">betrachten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Soo sal ick wesen meer <rhyme label="a" type="m">gherust</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Deur dien ghy doet mijn ziel <rhyme label="b" type="f">op-rijsen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En t' sal my zijn de hoogtste <rhyme label="a" type="m" corresp="#s6:l1">lust</rhyme></l>
        <l id="s6:l4" met="4" type="-+">V goetheydt meer en meer te <rhyme label="b" type="f" corresp="#s6:l2">prijsen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
