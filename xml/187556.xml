<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>187556</id>
    <date>
      <year-start>1681</year-start>
      <year-end>1681</year-end>
    </date>
    <location>
      <orginal-name>alkmaar</orginal-name>
      <standard-name>Alkmaar, The Netherlands</standard-name>
      <coordinates>
        <lon>52.6312592</lon>
        <lat>4.7503798</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Had gij dat heerlijke ooit gezien</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HAd gy dat heerlijk oit <rhyme label="a" type="m">gezien</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dwaas! dwaas! al uw <rhyme label="b" type="m">begeert</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Zoudt uit uw oog en herte <rhyme label="a" type="m" corresp="#s1:l1">vlien</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Ia oog en hert // Die strik <rhyme label="c" type="m">ontwerd</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Zig aan den Heemel <rhyme label="a" type="m" corresp="#s1:l1">bien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al het begeerlijk, dat uw <rhyme label="a" type="m">oog</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Dwaas! dwaas! hier zoo <rhyme label="b" type="m">belonkt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Lokt wel de ziel, maar laatze <rhyme label="a" type="m" corresp="#s2:l1">droog</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In duysternis // En daar toe <rhyme label="c" type="m">is</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Uw eed'le ziel te <rhyme label="a" type="m" corresp="#s2:l1">hoog</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ziet alom het gepreezen <rhyme label="a" type="m">goud</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dwaas! dwaas! het leerd u <rhyme label="b" type="m">zelf</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Is het niet zwaar en dorr' en <rhyme label="a" type="m" corresp="#s3:l1">koud</rhyme>?</l>
        <l id="s3:l4" met="4" type="-+">En kan het oog // Wel naar om <rhyme label="c" type="m">hoog</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Door 't ondoorschijnig <rhyme label="a" type="m" corresp="#s3:l1">goud</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'t Lastige pak van 't zwaar <rhyme label="a" type="m">metaal</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Dwaas! dwaas! drukt u de <rhyme label="b" type="m">ziel</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat die ter stof en Helle <rhyme label="a" type="m" corresp="#s4:l1">daal</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En noit het oog // En hert om <rhyme label="c" type="m">hoog</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Heilzaam ten Heemel <rhyme label="a" type="m" corresp="#s4:l1">haal</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wast' er iet in 't on-vrugtbaar <rhyme label="a" type="m">goud</rhyme>?</l>
        <l id="s5:l2" met="4" type="-+">Dwaas! dwaas! dat roept u <rhyme label="b" type="m">toe</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Den rijkdom vrugteloos en <rhyme label="a" type="m" corresp="#s5:l1">koud</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Geeft zay nog zaad // Maar dorren <rhyme label="c" type="m">laat</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Des Heeren wijngaard <rhyme label="a" type="m" corresp="#s5:l1">hout</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Killig is al het geld en <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dwaas! dwaas! ziet gy niet <rhyme label="b" type="m">wel</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Hoe haast het wassend geld den <rhyme label="a" type="m" corresp="#s6:l1">gloed</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Van liefde slist // En meer de <rhyme label="c" type="m">kist</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Dan d' arme buiken <rhyme label="a" type="m" corresp="#s6:l1">voed</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wat doet het al bekoorlijk <rhyme label="a" type="m">ligt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dwaas! dwaas! Hemel en <rhyme label="b" type="m">all</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Verdwijnen uit uw teer <rhyme label="a" type="m" corresp="#s7:l1">gezigt</rhyme>?</l>
        <l id="s7:l4" met="4" type="-+">Ist niet om dat // Des <rhyme label="c" type="m">Weerelds-schat</rhyme></l>
        <l id="s7:l5" met="3" type="-+">U staan komt in de <rhyme label="a" type="m" corresp="#s7:l1">ligt</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sluit maar het oog eens voor dien <rhyme label="a" type="m">straal</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dwaas! dwaas! die uw <rhyme label="b" type="m">verleid</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Tot dat een blik uit 's Heemels <rhyme label="a" type="m" corresp="#s8:l1">zaal</rhyme></l>
        <l id="s8:l4" met="4" type="-+">(Als die in min zig opent) <rhyme label="c" type="m">in</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Uw duistere ziel <rhyme label="a" type="m" corresp="#s8:l1">daal</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Daar is het al van louter <rhyme label="a" type="m">goud</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dwaas! dwaas! maar daar het <rhyme label="b" type="m">oog</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Door henen, als door glas, <rhyme label="a" type="m" corresp="#s9:l1">beschouwd</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Het eeuwig ligt; En dat <rhyme label="c" type="m">gezigt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Alleen in u <rhyme label="a" type="m" corresp="#s9:l1">behoud</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Springen van Heemels heilzaam <rhyme label="a" type="m">nat</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dwaas! dwaas! zig u daar <rhyme label="b" type="m">bien</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die 't hert verquikken dor en <rhyme label="a" type="m" corresp="#s10:l1">mad</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">En maken 't sterk // Tot 's Heemels <rhyme label="c" type="m">werk</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Van merg en vetheid <rhyme label="a" type="m" corresp="#s10:l1">zad</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ag dat den Heemel eens <rhyme label="a" type="m">ontsloot</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dwaas! dwaas! sluizen van <rhyme label="b" type="m">heil</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En in uw ziel een golfje <rhyme label="a" type="m" corresp="#s11:l1">goot</rhyme>!</l>
        <l id="s11:l4" met="4" type="-+">Zoo waar en wis // Uw ziele <rhyme label="c" type="m">fris</rhyme></l>
        <l id="s11:l5" met="3" type="-+">En al uw lusten <rhyme label="a" type="m" corresp="#s11:l1">dood</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Grond'looze <rhyme label="a" type="m">Algenoegzaamheid</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Eeuw, eeuw, eeuwige <rhyme label="b" type="m">spring</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Van aller Schepzlen <rhyme label="a" type="m" corresp="#s12:l1">lieflijkheid</rhyme>:</l>
        <l id="s12:l4" met="4" type="-+">O volle God! Wy komen <rhyme label="c" type="m">tot</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Uw rijke <rhyme label="a" type="m" corresp="#s12:l1">goedigheid</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Schepz'len staa wat uit de <rhyme label="a" type="m">ligt</rhyme>!</l>
        <l id="s13:l2" met="4" type="-+">Valsch, valsch is all uw <rhyme label="b" type="m">glans</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Wy worden zad van dit <rhyme label="a" type="m" corresp="#s13:l1">gezigt</rhyme></l>
        <l id="s13:l4" met="4" type="-+">En krijgen dan // Een walge <rhyme label="c" type="m">van</rhyme></l>
        <l id="s13:l5" met="3" type="-+">'t Verleidend' <rhyme label="a" type="m" corresp="#s13:l1">scheemer-ligt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Weerdige zelf! verliez u <rhyme label="a" type="m">meed</rhyme>.</l>
        <l id="s14:l2" met="4" type="-+">(Datick, valsch, weerdige <rhyme label="b" type="m">zelf</rhyme>!)</l>
        <l id="s14:l3" met="4" type="-+">Wie is' er die zijn ziel <rhyme label="a" type="m" corresp="#s14:l1">besteed</rhyme></l>
        <l id="s14:l4" met="4" type="-+">In dit gesigt // En in dat <rhyme label="c" type="m">ligt</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Zig zelven niet <rhyme label="a" type="m" corresp="#s14:l1">vergeet</rhyme>?</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Als deeze zon in <rhyme label="a" type="m">middag-steilt</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Staan zal boven het <rhyme label="b" type="m">hooft</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Wie is 'er die de diepte <rhyme label="a" type="m" corresp="#s15:l1">peild</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Of grond vind aan // Dien <rhyme label="c" type="m">oceaan</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Als hy zig mede <rhyme label="a" type="m" corresp="#s15:l1">deild</rhyme>?</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Deild u den Heemel maar een <rhyme label="a" type="m">straal</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Van zig; nietige <rhyme label="b" type="m">Wer'ld</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Uw schat, uw pragt, uw weelde, <rhyme label="a" type="m" corresp="#s16:l1">daald'</rhyme>:</l>
        <l id="s16:l4" met="4" type="-+">Voor dit gezigt: Versmaad gy <rhyme label="c" type="m">ligt</rhyme></l>
        <l id="s16:l5" met="3" type="-+">'t Genot van <rhyme label="a" type="m" corresp="#s16:l1">altemaal</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
