  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DEur jou oogen Grietje <rhyme label="a" type="f">schietje</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Pietjen in zyn <rhyme label="b" type="m">ingewant</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Iaa zyn gruysich stietje, <rhyme label="a" type="f" corresp="#s1:l1">lietje</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Mee niet vry van <rhyme label="b" type="m" corresp="#s1:l2">minne-brant</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Pietje zach de pijlen <rhyme label="c" type="f">ylen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En sen Grietjen, even <rhyme label="d" type="m">gaau</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Schichten onderwylen <rhyme label="c" type="f" corresp="#s1:l5">vylen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Och! de man die wierd zoo <rhyme label="d" type="m" corresp="#s1:l6">flaau</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Tot dat ick deez woorden <rhyme label="a" type="f">hoorden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">'k Ben aen Grietje wel <rhyme label="b" type="m">verplicht</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Sy die my bekoorde door <rhyme label="a" type="f" corresp="#s2:l1">de</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Lonken van haar <rhyme label="b" type="m" corresp="#s2:l2">aangezicht</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Maer wie kan dit snyen <rhyme label="c" type="f">lyen</rhyme>?</l>
        <l id="s2:l6" met="4" type="+-">Och! 'k beklaagh de tijt, en <rhyme label="d" type="m">stont</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Dat ick ging uyt vryen <rhyme label="c" type="f" corresp="#s2:l5">tyen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Soo sloot hy zyn kleecke <rhyme label="d" type="m" corresp="#s2:l6">mont</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Al die Pietje klagen <rhyme label="a" type="f">zagen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Hadden meely met de <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Wie kan sulcke plagen, <rhyme label="a" type="f" corresp="#s3:l1">dragen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Seyder ellick een schier <rhyme label="b" type="m" corresp="#s3:l2">van</rhyme>?</l>
        <l id="s3:l5" met="4" type="+-">Tot dat zy verleegen, <rhyme label="c" type="f">sweegen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Grietje kreeg de tydingh <rhyme label="d" type="m">haast</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Die haar liet beweegen, <rhyme label="c" type="f" corresp="#s3:l5">tegen</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Pietje niet te zyn de <rhyme label="d" type="m" corresp="#s3:l6">quaast</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Die 's gingh hy in hoecken, <rhyme label="a" type="f">soecken</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Pylen, diez' op een na, <rhyme label="b" type="m">kreech</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dies gingz' op zyn broeken, <rhyme label="a" type="f" corresp="#s4:l1">vloeken</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Die de leste pyl <rhyme label="b" type="m" corresp="#s4:l2">versweech</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Eermen 't zach, de boxe, <rhyme label="c" type="f">trockse</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Pietje van sen bloote <rhyme label="d" type="m">gat</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Tot men zach zen hokse <rhyme label="c" type="f" corresp="#s4:l5">fockse</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Al den brits, wie weet juyst <rhyme label="d" type="m" corresp="#s4:l6">wat</rhyme>?</l>
      </lg>
    </lg>
  </text>
