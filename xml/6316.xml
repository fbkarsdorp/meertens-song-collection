  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">OP wat Ioffer <rhyme label="a" type="m">gront</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Steunt mijn hoop // ach de <rhyme label="b" type="m">knoop</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Van het dier <rhyme label="a" type="m" corresp="#s1:l1">verbont</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Gedaan mont aan <rhyme label="a" type="m" corresp="#s1:l1">mont</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Is aan 't glippe // wreede <rhyme label="c" type="f">lippe</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Wilt de vierschaar <rhyme label="d" type="f">spannen</rhyme></l>
        <l id="s1:l7" met="3" type="+-">In't bedekt <rhyme label="e" type="m">gemoet</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Word ik hier <rhyme label="d" type="f" corresp="#s1:l6">gebannen</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Licht my vry de <rhyme label="e" type="m" corresp="#s1:l7">voet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Best een korte <rhyme label="a" type="m">stoot</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Uitgestaan // vang maar <rhyme label="b" type="m">aan</rhyme>.</l>
        <l id="s2:l3" met="3" type="+-">'k Wens na zulk een <rhyme label="a" type="m" corresp="#s2:l1">doot</rhyme>.</l>
        <l id="s2:l4" met="3" type="+-">Zo ik die <rhyme label="a" type="m" corresp="#s2:l1">genoot</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Van u hande // nu de <rhyme label="c" type="f">banden</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Van u zijn <rhyme label="d" type="f">gebrooken</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Zo en spaar geen <rhyme label="e" type="m">vloet</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Ik sterf <rhyme label="d" type="f" corresp="#s2:l6">ongewroken</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Licht my vry de <rhyme label="e" type="m" corresp="#s2:l7">voet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Nu ist stervens <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Ik begeer // <rhyme label="b" type="m">nimmermeer</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Dat men u <rhyme label="a" type="m" corresp="#s3:l1">verwijt</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Dat gy de oorzaak <rhyme label="a" type="m" corresp="#s3:l1">zijt</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Maar mijn oogen: 'k ben <rhyme label="c" type="f">bedrogen</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Door twee held're <rhyme label="d" type="f">straalen</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Van u lief <rhyme label="e" type="m">gesicht</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Die my nu doen <rhyme label="d" type="f" corresp="#s3:l6">dwaalen</rhyme>.</l>
        <l id="s3:l9" met="3" type="+-">Best de voet <rhyme label="e" type="m" corresp="#s3:l7">gelicht</rhyme>.</l>
      </lg>
    </lg>
  </text>
