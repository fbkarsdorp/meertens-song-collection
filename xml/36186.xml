    <melody>Gelukkig is de mens</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Mensch hoe can het <rhyme label="a" type="m">syn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe can't u hert <rhyme label="b" type="f">ghedooghen</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Dat ghy op dit <rhyme label="a" type="m" corresp="#s1:l1">termijn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Niet insiet met u <rhyme label="b" type="f" corresp="#s1:l2">ooghen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">T'seer schrickelijcke <rhyme label="c" type="m">quaet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat eens te naecken <rhyme label="c" type="m" corresp="#s1:l5">staet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Voor alle u <rhyme label="c" type="m" corresp="#s1:l5">misdaet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">U Ziel moet syn <rhyme label="a" type="m">ghevoert</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Tot t'quaet dat staet te <rhyme label="b" type="f">naecken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ghelijck men is <rhyme label="a" type="m" corresp="#s2:l1">beroert</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Int t'quaet datmen siet <rhyme label="b" type="f" corresp="#s2:l2">smaecken</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Die alle quaet <rhyme label="c" type="m">insiet</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hy maeckt of dat het <rhyme label="c" type="m" corresp="#s2:l5">vliet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Of nimmermeer <rhyme label="c" type="m" corresp="#s2:l5">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Meynt ghy hier <rhyme label="a" type="m">onbelaen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">U selven toe ge <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat ghy op dese <rhyme label="a" type="m" corresp="#s3:l1">baen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In eeuwicheydt  sullen <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme>?</l>
        <l id="s3:l5" met="3" type="-+">Neen, neen gh'en hebt gheen <rhyme label="c" type="m">noodt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">T'moet al, t'sy cleyn of <rhyme label="c" type="m" corresp="#s3:l5">groot</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Smaecken de bitter <rhyme label="c" type="m" corresp="#s3:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als t'leven is <rhyme label="a" type="m">ghe-endt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Terstont soo moet ghy <rhyme label="b" type="f">commen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ghetuyghen <rhyme label="a" type="m" corresp="#s4:l1">pertinent</rhyme></l>
        <l id="s4:l4" met="3" type="-+">U selfs guaet met <rhyme label="b" type="f" corresp="#s4:l2">verschrommen</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">En Godt met straffe <rhyme label="c" type="m">mijn'</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sal daer af Rechter <rhyme label="c" type="m" corresp="#s4:l5">syn</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Tot eeuwelijcke <rhyme label="c" type="m" corresp="#s4:l5">pijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Lof mensch eert wordt te <rhyme label="a" type="m">laet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hout u verstandt <rhyme label="b" type="f">verheven</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Insiet des oordeels <rhyme label="a" type="m" corresp="#s5:l1">staet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die syn sal naer dit <rhyme label="b" type="f" corresp="#s5:l2">leven</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">T'sal daer soo scherp <rhyme label="c" type="m">aengaen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Naer dat ghy hebt <rhyme label="c" type="m" corresp="#s5:l5">ghedaen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Sult ghy dan loon <rhyme label="c" type="m" corresp="#s5:l5">ontfaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
