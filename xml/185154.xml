    <tags/>
    <melody>Al die in de echt wil treden</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Vrienden! wil myn Lied <rhyme label="a" type="f">aanhoren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">'k Kom alweder voor den <rhyme label="b" type="m">dag</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ik laat my niet ligt <rhyme label="a" type="f" corresp="#s1:l1">verstoren</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Wyl ik gaarne zingen <rhyme label="b" type="m" corresp="#s1:l2">mag</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Van de Mode te <rhyme label="c" type="f">beginnen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Daar zong ik reeds dikwyls <rhyme label="d" type="m">van</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Ik zal my dus weer <rhyme label="c" type="f" corresp="#s1:l5">bezinnen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Of het nog iets velen <rhyme label="d" type="m" corresp="#s1:l6">kan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Jonge Knapen en <rhyme label="a" type="f">Jufrouwen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Luistert naar myn <rhyme label="b" type="m">instrument</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hoort met aandacht, wilt <rhyme label="a" type="f" corresp="#s2:l1">vertrouwen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Ik ben met de smaak <rhyme label="b" type="m" corresp="#s2:l2">bekend</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Als gy dus eens wilt <rhyme label="c" type="f">begeeren</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Naar de smaak gekleed te <rhyme label="d" type="m">gaan</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Zal ik uw de Mode <rhyme label="c" type="f" corresp="#s2:l5">leeren</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Dat gy zult verwonderd <rhyme label="d" type="m" corresp="#s2:l6">staan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ik zal my maar eens eerst <rhyme label="a" type="f">bepalen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Tot de Petit Maiter <rhyme label="b" type="m">kring</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Schoon ik zong verscheide <rhyme label="a" type="f" corresp="#s3:l1">malen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Van die Knaapjes <rhyme label="b" type="m" corresp="#s3:l2">zonderling</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Fiekerloot ik zal 't weer <rhyme label="c" type="f">wagen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Om te spreeken van hun <rhyme label="d" type="m">pracht</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Zoo myn styl uw kan <rhyme label="c" type="f" corresp="#s3:l5">behagen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Geef dan op hun kleeding <rhyme label="d" type="m" corresp="#s3:l6">acht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Lange Rokken, korte <rhyme label="a" type="f">knepen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En een ruime Broek <rhyme label="b" type="m">geplooid</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Effen Vesten, of met <rhyme label="a" type="f" corresp="#s4:l1">streepen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Daar gaan zy mee <rhyme label="b" type="m" corresp="#s4:l2">opgetooit</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Patte Hoeden, breede <rhyme label="c" type="f">Randen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">De Doek vercierd zoms met een <rhyme label="d" type="m">speld</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Daar men van zou <rhyme label="c" type="f" corresp="#s4:l5">watertanden</rhyme>;</l>
        <l id="s4:l8" met="4" type="+-">Maar 't is Glas voor weinig <rhyme label="d" type="m" corresp="#s4:l6">geld</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ook ziet men verscheiden <rhyme label="a" type="f">dragen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Willen zy Moderne <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Een Kariek met <rhyme label="a" type="f" corresp="#s5:l1">Mantel-kragen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Uitgevoerd met roode <rhyme label="b" type="m" corresp="#s5:l2">gryn</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Maar die smaak kan ik niet <rhyme label="c" type="f">pryzen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Ik vind die geheel <rhyme label="d" type="m">verkeerd</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Draag Kalmuk, ik zal <rhyme label="c" type="f" corresp="#s5:l5">bewyzen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Die word voor de kou <rhyme label="d" type="m" corresp="#s5:l6">begeerd</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Lieve Meisjes gaat naar <rhyme label="a" type="f">Sinkel</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Hy woond op de <rhyme label="b" type="m">Niewendyk</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">In een zeer briljante <rhyme label="a" type="f" corresp="#s6:l1">winkel</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Naar de smaak gebouwd zeer <rhyme label="b" type="m" corresp="#s6:l2">ryk</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Gy behoeft niet ver te <rhyme label="c" type="f">loopen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Meisjes wilt gy wezen <rhyme label="d" type="m">wys</rhyme>;</l>
        <l id="s6:l7" met="4" type="+-">Wilt by hem Katoenen <rhyme label="c" type="f" corresp="#s6:l5">koopen</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Alles tot gezetten <rhyme label="d" type="m" corresp="#s6:l6">prys</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'k Zal de Dames niet <rhyme label="a" type="f">vergeten</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Zy behoren tot de <rhyme label="b" type="m">zwier</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Schryf ik zoms wat te <rhyme label="a" type="f" corresp="#s7:l1">vermeeten</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Geef de schuld aan myn <rhyme label="b" type="m" corresp="#s7:l2">papier</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Lange lyven, holle <rhyme label="c" type="f">plooien</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Strooken, Sjerpen, alles <rhyme label="d" type="m">vlug</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Dames, Kammeniers en <rhyme label="c" type="f" corresp="#s7:l5">Booijen</rhyme>;</l>
        <l id="s7:l8" met="4" type="+-">Al hun pracht is op de <rhyme label="d" type="m" corresp="#s7:l6">rug</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ik hoor zoms een Vendje <rhyme label="a" type="f">smalen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Die verbeeld te zyn <rhyme label="b" type="m">PoÃ«et</rhyme>;</l>
        <l id="s8:l3" met="4" type="+-">Wil zich tot die smaak <rhyme label="a" type="f" corresp="#s8:l1">bepalen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Schoon hy nul nog cyver <rhyme label="b" type="m" corresp="#s8:l2">weet</rhyme>;</l>
        <l id="s8:l5" met="4" type="+-">Onlangs spraak ik nog dat <rhyme label="c" type="f">Klantje</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Die ook graag voor Dichter <rhyme label="d" type="m">gaat</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Maar het is een <rhyme label="c" type="f" corresp="#s8:l5">assurandje</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Die geen Taal nog Maat <rhyme label="d" type="m" corresp="#s8:l6">verstaat</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Tot besluit myn goede <rhyme label="a" type="f">vrinden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Verschoon my als ik schryf te <rhyme label="b" type="m">rond</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Daar is nog wel stof te <rhyme label="a" type="f" corresp="#s9:l1">vinden</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Maar te veel is <rhyme label="b" type="m" corresp="#s9:l2">ongezond</rhyme>;</l>
        <l id="s9:l5" met="4" type="+-">Wil men van de menschen <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Moet men steeds wat kippig <rhyme label="d" type="m">zyn</rhyme>;</l>
        <l id="s9:l7" met="4" type="+-">En zyn oordeel tegen <rhyme label="c" type="f" corresp="#s9:l5">streven</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">Ieder leeft dus maar in <rhyme label="d" type="m" corresp="#s9:l6">schyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
