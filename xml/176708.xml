  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ryst uyt den slaep ghy ‘s Heeren <rhyme label="a" type="m">knecht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">U rekeninghe <rhyme label="a" type="m" corresp="#s1:l1">overleght</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wilt neerstigh <rhyme label="b" type="f">oversommen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Oft alle u saecken staen <rhyme label="a" type="m" corresp="#s1:l1">recht</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Maer in u herte niet en <rhyme label="a" type="m" corresp="#s1:l1">seght</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Mijn Heer vertreckt te <rhyme label="b" type="f" corresp="#s1:l3">kommen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Wilt soo niet roemen als <rhyme label="c" type="m">versteent</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Sijn komste, alsment niet en <rhyme label="c" type="m" corresp="#s1:l7">meent</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Sal haestelijck <rhyme label="d" type="f">gheschieden</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Neemt waer den tijt u hier <rhyme label="c" type="m" corresp="#s1:l7">verleent</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Op dat ghy naemaels niet en <rhyme label="c" type="m" corresp="#s1:l7">weent</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Maer weerdigh zijt <rhyme label="d" type="f" corresp="#s1:l9">t’ontvlieden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Heer komt nu die eeuwigh <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Daer ‘t alles voor verschrickt en <rhyme label="a" type="m" corresp="#s2:l1">beeft</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Om t’oordeelen <rhyme label="b" type="f">krachtigh</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Elck sie dat hy goe reden <rhyme label="a" type="m" corresp="#s2:l1">gheeft</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Van elcken woorde dat hy <rhyme label="a" type="m" corresp="#s2:l1">heeft</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ghesproocken, <rhyme label="b" type="f" corresp="#s2:l3">onvoordachtigh</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Bidt eendrachtigh nae sijn <rhyme label="c" type="m">vermaen</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Dat ghy dan voor hem meught <rhyme label="c" type="m" corresp="#s2:l7">bestaen</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Als hy elck een sal <rhyme label="d" type="f">loonen</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Nae dat hy sal hebben <rhyme label="c" type="m" corresp="#s2:l7">ghedaen</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">‘t Zy goet of quaedt ende niet <rhyme label="c" type="m" corresp="#s2:l7">aen</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Sien eenighe <rhyme label="d" type="f" corresp="#s2:l9">persoonen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Siet oft ghy hebt ghedaen <rhyme label="a" type="m">profijt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Met ‘t Pont dijns Heeren nu ter <rhyme label="a" type="m" corresp="#s3:l1">tijt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">End’ of ghy als <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Vruchtbaer in Godts kennisse <rhyme label="a" type="m" corresp="#s3:l1">zijt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En of ghy hebt met al u <rhyme label="a" type="m" corresp="#s3:l1">vlijt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In ‘t gheloof deught <rhyme label="b" type="f" corresp="#s3:l3">bewesen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">In desen bescheydenheyt <rhyme label="c" type="m">vroedt</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Matigheydt end’ lijdtsaemheyt <rhyme label="c" type="m" corresp="#s3:l7">goet</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Godtzaligheyt <rhyme label="d" type="f">eersame</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">En Broederlijcke liefde <rhyme label="c" type="m" corresp="#s3:l7">soet</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Met der ghemeener eliefden <rhyme label="c" type="m" corresp="#s3:l7">gloet</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Over-vloedigh <rhyme label="d" type="f" corresp="#s3:l9">bequame</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Is ‘t so, u wert seer <rhyme label="a" type="m">autentijck</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ontsloten <rhyme label="a" type="m" corresp="#s4:l1">overvloedelijck</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Den inganck sonder <rhyme label="b" type="f">falen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Tot des Heeren schoon lustigh <rhyme label="a" type="m" corresp="#s4:l1">rijck</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Daer niet besmeurt met sondig <rhyme label="a" type="m" corresp="#s4:l1">slijck</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In komt, nae Schrifts <rhyme label="b" type="f" corresp="#s4:l3">verhalen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">En wilt niet dwalen Broeders, <rhyme label="c" type="m">want</rhyme></l>
        <l id="s4:l8" met="4" type="-+">In dat eeuwigh beloofde <rhyme label="c" type="m" corresp="#s4:l7">Lant</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">En komt gheen <rhyme label="d" type="f">onbesneden</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Welck besnijden in reyn <rhyme label="c" type="m" corresp="#s4:l7">verstandt</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Gheschiet door Gods Gheest sonder <rhyme label="c" type="m" corresp="#s4:l7">handt</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Aen d’inwendighe <rhyme label="d" type="f" corresp="#s4:l9">leden</rhyme>/</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Anders ‘t besnijden niet en <rhyme label="a" type="m">ghelt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Daer moet zijn, so de Schrift <rhyme label="a" type="m" corresp="#s5:l1">vertelt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Een nieuwe <rhyme label="b" type="f">Creatuyre</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dus strijdt dat ghy behout het <rhyme label="a" type="m" corresp="#s5:l1">Velt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En ‘t rijck innemet met <rhyme label="a" type="m" corresp="#s5:l1">ghewelt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Als Christum in <rhyme label="b" type="f" corresp="#s5:l3">Figuyre</rhyme>:</l>
        <l id="s5:l7" met="4" type="-+">Sijn puyre, voetstappen <rhyme label="c" type="m">eerbaer</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Kruys-liefdigh ghesint, volghet <rhyme label="c" type="m" corresp="#s5:l7">naer</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">In woorden en in <rhyme label="d" type="f">wercken</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Door veel verdriet en lijden <rhyme label="c" type="m" corresp="#s5:l7">swaer</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Gaetmen in ‘t Hemelrijcke <rhyme label="c" type="m" corresp="#s5:l7">klaer</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">So wy aen Christum <rhyme label="d" type="f" corresp="#s5:l9">mercken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Prinselijck knecht weest wel <rhyme label="a" type="m">bedacht</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Houdt t’aller uyre goede <rhyme label="a" type="m" corresp="#s6:l1">wacht</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Want uwen Heer <rhyme label="b" type="f">ydoone</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Sal komen met al sijn <rhyme label="a" type="m" corresp="#s6:l1">Heyr-kracht</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Ghelijck eenen Dief in der <rhyme label="a" type="m" corresp="#s6:l1">nacht</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Waeckt ghy, tot uwen <rhyme label="b" type="f" corresp="#s6:l3">loone</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">De Kroone, sal wesen u <rhyme label="c" type="m">deel</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">En overhanckelijck <rhyme label="c" type="m" corresp="#s6:l7">juweel</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Dat eeuwigh leven <rhyme label="d" type="f">jeughdigh</rhyme>,</l>
        <l id="s6:l10" met="4" type="-+">Volkomen blijdtschap al <rhyme label="c" type="m" corresp="#s6:l7">gheheel</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">Al in dat lustigh schoon <rhyme label="c" type="m" corresp="#s6:l7">Prieel</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">Werdt u gegheven <rhyme label="d" type="f" corresp="#s6:l9">vreughdigh</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
