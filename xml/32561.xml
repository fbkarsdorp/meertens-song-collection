    <melody>Rosbol wou laatst buizen</melody>
    <categories>
      <category translation="amusement">vermaak</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ROsbol wau lest <rhyme label="a" type="f">buysen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Pint op pint tegen <rhyme label="b" type="m">danck</rhyme>’</l>
        <l id="s1:l3" met="4" type="-+">Wirdt heel cranck,, door den <rhyme label="b" type="m" corresp="#s1:l2">dranck</rhyme>,,</l>
        <l id="s1:l4" met="4" type="+-">Dat hy sat viel vande <rhyme label="b" type="m" corresp="#s1:l2">banck</rhyme>,,</l>
        <l id="s1:l5" met="3" type="-+">Hy riep ach lieve <rhyme label="a" type="f" corresp="#s1:l1">knuysen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ick lagh hier in de <rhyme label="c" type="m">hel</rhyme>,,</l>
        <l id="s1:l7" met="4" type="+-">'k wordt soo fel,, om de <rhyme label="c" type="m" corresp="#s1:l6">snel</rhyme>,,</l>
        <l id="s1:l8" met="4" type="+-">Heel gepynight door mijn <rhyme label="c" type="m" corresp="#s1:l6">vel</rhyme>,,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Heer duyvel laet my <rhyme label="a" type="f">loopen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Ick en heb oyt eenigh <rhyme label="b" type="m">Meyt</rhyme>,,</l>
        <l id="s2:l3" met="4" type="-+">Hier gevreyt,, eer ick van <rhyme label="b" type="m" corresp="#s2:l2">speyt</rhyme>,,</l>
        <l id="s2:l4" met="4" type="+-">Suyver heel mijn keel <rhyme label="b" type="m" corresp="#s2:l2">af-beyt</rhyme>,,</l>
        <l id="s2:l5" met="3" type="-+">O! buyck moet ghy <rhyme label="a" type="f" corresp="#s2:l1">becoopen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Om een droncxken <rhyme label="c" type="m">bier</rhyme>,,</l>
        <l id="s2:l7" met="4" type="+-">Sulcken tier,, by het <rhyme label="c" type="m" corresp="#s2:l6">vier</rhyme>,,</l>
        <l id="s2:l8" met="4" type="+-">Duyvels 'k heb hier geen <rhyme label="c" type="m" corresp="#s2:l6">plesier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Godt Bacchus wilt my <rhyme label="a" type="f">hooren</rhyme>;</l>
        <l id="s3:l2" met="4" type="+-">Helpt ten minsten uwen <rhyme label="b" type="m">vrint</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Die u dint,, met de <rhyme label="b" type="m" corresp="#s3:l2">pint</rhyme>,,</l>
        <l id="s3:l4" met="4" type="+-">Want hy u alleen <rhyme label="b" type="m" corresp="#s3:l2">bemint</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">U vader gaet <rhyme label="a" type="f" corresp="#s3:l1">verlooren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Mijn kinders groot en <rhyme label="c" type="m">klyn</rhyme>,,</l>
        <l id="s3:l7" met="4" type="+-">Liefste mijn,, stelpt mijn <rhyme label="c" type="m" corresp="#s3:l6">pyn</rhyme>,,</l>
        <l id="s3:l8" met="4" type="+-">Eer ick inden brandt <rhyme label="c" type="m" corresp="#s3:l6">verdwyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Claes Compeer, en <rhyme label="a" type="f">Flooren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Neel die 't speelken oock <rhyme label="b" type="m">aensagh</rhyme>,,</l>
        <l id="s4:l3" met="4" type="-+">Borst van lagh,, dien <rhyme label="b" type="m" corresp="#s4:l2">dagh</rhyme>,,</l>
        <l id="s4:l4" met="4" type="+-">Als dees satte beest daer <rhyme label="b" type="m" corresp="#s4:l2">lagh</rhyme>’</l>
        <l id="s4:l5" met="3" type="-+">Griet packten hem by <rhyme label="a" type="f" corresp="#s4:l1">d'ooren</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Hy schreeuwden <rhyme label="c" type="m">overluyt</rhyme>,,</l>
        <l id="s4:l7" met="4" type="+-">Wat beduyt,, desen <rhyme label="c" type="m" corresp="#s4:l6">bruyt</rhyme>,,</l>
        <l id="s4:l8" met="4" type="+-">Daermê was den droom gansch <rhyme label="c" type="m" corresp="#s4:l6">uyt</rhyme>,</l>
      </lg>
    </lg>
  </text>
