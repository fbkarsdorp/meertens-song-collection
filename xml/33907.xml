    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">ONsen <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">By een Kasteel <rhyme label="b" type="m">quam</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Met groot <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Hem Martha binnen <rhyme label="b" type="m" corresp="#s1:l2">nam</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Sy heeft hem, als een waerden <rhyme label="c" type="m">Vrient</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Met alle ernst, en vlijt <rhyme label="c" type="m" corresp="#s1:l5">gedient</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Soo dat gy <rhyme label="d" type="m">gingh</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Besorgen alle <rhyme label="d" type="m" corresp="#s1:l7">dingh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Maer sy <rhyme label="a" type="m">hadt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Nogh eene Suster <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">Dese <rhyme label="a" type="m" corresp="#s2:l1">sat</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Wel stil by Jesus <rhyme label="b" type="m" corresp="#s2:l2">voet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dees hoorden aen met goet <rhyme label="c" type="m">gemak</rhyme></l>
        <l id="s2:l6" met="4" type="-+">De woorden die Heer Jesus <rhyme label="c" type="m" corresp="#s2:l5">sprak</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Haers <rhyme label="d" type="m">harten-lust</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Vondt sy in dese <rhyme label="d" type="m" corresp="#s2:l7">rust</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Na <rhyme label="a" type="m">verbeyd'</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Soo worde Martha <rhyme label="b" type="m">loof</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Dus sy <rhyme label="a" type="m" corresp="#s3:l1">seyd'</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Heer, ik alleene <rhyme label="b" type="m" corresp="#s3:l2">sloof</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En denkt gy daer nu niet eens <rhyme label="c" type="m">om</rhyme>?</l>
        <l id="s3:l6" met="4" type="-+">Ey, seght dat mijne Suster <rhyme label="c" type="m" corresp="#s3:l5">kom</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Op dat sy <rhyme label="d" type="m">my</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Met werken magh staen <rhyme label="d" type="m" corresp="#s3:l7">by</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Jesus <rhyme label="a" type="m">seydt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">O Martha, Martha, <rhyme label="b" type="m">hoort</rhyme></l>
        <l id="s4:l3" met="2" type="+-">Goet <rhyme label="a" type="m" corresp="#s4:l1">bescheydt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gy u in veel <rhyme label="b" type="m" corresp="#s4:l2">verstoort</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Gy beesigh en sorghvuldigh <rhyme label="c" type="m">sijt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dus overbrenght gy uwe <rhyme label="c" type="m" corresp="#s4:l5">tijt</rhyme>;</l>
        <l id="s4:l7" met="2" type="-+">Maer wel <rhyme label="d" type="m">gewis</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Een saek van noodigh <rhyme label="d" type="m" corresp="#s4:l7">is</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="+-">'t Beste <rhyme label="a" type="m">deel</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Maria heeft <rhyme label="b" type="m">gekeurt</rhyme>,</l>
        <l id="s5:l3" met="2" type="+-">'t Welke <rhyme label="a" type="m" corresp="#s5:l1">heel</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Niet werden sal <rhyme label="b" type="m" corresp="#s5:l2">verbeurt</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">O goede Jesus, leert ons <rhyme label="c" type="m">togh</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Het beste deel verkiesen <rhyme label="c" type="m" corresp="#s5:l5">nogh</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Het welke <rhyme label="d" type="m">wy</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Ons mogen houden <rhyme label="d" type="m" corresp="#s5:l7">by</rhyme>.</l>
      </lg>
    </lg>
  </text>
