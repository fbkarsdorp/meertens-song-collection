  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GEhaet, geschrikt, <rhyme label="a" type="m">gevlucht</rhyme></l>
        <l id="s1:l2" met="2" type="-+">moet t’allen <rhyme label="b" type="f">stonden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De wortel en de <rhyme label="a" type="m" corresp="#s1:l1">vrucht</rhyme></l>
        <l id="s1:l4" met="2" type="-+">zijn van de <rhyme label="b" type="f" corresp="#s1:l2">zonde</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Die Satans quaed <rhyme label="c" type="m">bedrijf</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Tot scha van ziel en <rhyme label="c" type="m" corresp="#s1:l5">lijf</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Door dienst van ’t eerste <rhyme label="c" type="m" corresp="#s1:l5">wijf</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Ons heeft <rhyme label="b" type="f" corresp="#s1:l2">gevonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het was den Helschen <rhyme label="a" type="m">haet</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Die ons <rhyme label="b" type="f">benijde</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Het Hemelsche <rhyme label="a" type="m" corresp="#s2:l1">sieraet</rhyme>.</l>
        <l id="s2:l4" met="2" type="-+">Des zy <rhyme label="b" type="f" corresp="#s2:l2">bestrijden</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Dan mensch kwam deur de <rhyme label="c" type="m">wang</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van een vermomde <rhyme label="c" type="m" corresp="#s2:l5">slang</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Zoo lang dat hem tot <rhyme label="c" type="m" corresp="#s2:l5">vang</rhyme></l>
        <l id="s2:l8" met="2" type="-+">De proy <rhyme label="b" type="f" corresp="#s2:l2">gedijde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O dier gekochte <rhyme label="a" type="m">spijs</rhyme>!</l>
        <l id="s3:l2" met="2" type="-+">Daert weeldig <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van ’t zoetste <rhyme label="a" type="m" corresp="#s3:l1">Paradijs</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Voor wierd <rhyme label="b" type="f" corresp="#s3:l2">gegeven</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Foey slang der slangen <rhyme label="c" type="m">foey</rhyme>!</l>
        <l id="s3:l6" met="3" type="-+">Met uw’ gereikte <rhyme label="c" type="m" corresp="#s3:l5">snoey</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Daer ons zoo zwaeren <rhyme label="c" type="m" corresp="#s3:l5">boey</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Van is <rhyme label="b" type="f" corresp="#s3:l2">gebleven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer foey met meerder <rhyme label="a" type="m">re’en</rhyme></l>
        <l id="s4:l2" met="2" type="-+">En boven <rhyme label="b" type="f">alle</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Het vuil, de vuile <rhyme label="a" type="m" corresp="#s4:l1">que’en</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Die ons <rhyme label="b" type="f" corresp="#s4:l2">vervallen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Een ziel zoo schoon, zoo <rhyme label="c" type="m">net</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Tot een zoo vuilen <rhyme label="c" type="m" corresp="#s4:l5">smet</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">En Goods beloofde <rhyme label="c" type="m" corresp="#s4:l5">wet</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Zoo dee <rhyme label="b" type="f" corresp="#s4:l2">vermallen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De zonde zegg’ ik. <rhyme label="a" type="m">Iae</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Noyt grover <rhyme label="b" type="f">kladde</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Den Aerdbo’em voor of <rhyme label="a" type="m" corresp="#s5:l1">nae</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Te dragen <rhyme label="b" type="f" corresp="#s5:l2">hadde</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Geen Monster (‘k weet het <rhyme label="c" type="m">wel</rhyme>)</l>
        <l id="s5:l6" met="3" type="-+">Geen Beer, geen Leeu zoo <rhyme label="c" type="m" corresp="#s5:l5">fel</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Iae in de diepe <rhyme label="c" type="m" corresp="#s5:l5">Hel</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Geen swarter <rhyme label="b" type="f" corresp="#s5:l2">Padde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gaet heen, en nomtze <rhyme label="a" type="m">vry</rhyme>;</l>
        <l id="s6:l2" met="2" type="-+">Een pry der <rhyme label="b" type="f">prijen</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">En Pest, een <rhyme label="a" type="m" corresp="#s6:l1">Lazery</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Die niemand <rhyme label="b" type="f" corresp="#s6:l2">lyen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Noch zag; d’onnutste <rhyme label="c" type="m">hoer</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">z’ Is ’t algemeyn <rhyme label="c" type="m" corresp="#s6:l5">rumoer</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Iae ’s duyvels eigen <rhyme label="c" type="m" corresp="#s6:l5">moer</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Van d’eerste <rhyme label="b" type="f" corresp="#s6:l2">tijen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zy was, die van <rhyme label="a" type="m">begin</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Den Zatan <rhyme label="b" type="f">baerde</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Door een verdraide <rhyme label="a" type="m" corresp="#s7:l1">zin</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Van d’hoogste <rhyme label="b" type="f" corresp="#s7:l2">waerde</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Vlucht dan met reden <rhyme label="c" type="m">ook</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Een zoo bevlamden <rhyme label="c" type="m" corresp="#s7:l5">rook</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En ’t schrikkelijkste <rhyme label="c" type="m" corresp="#s7:l5">Spook</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Van Hel en <rhyme label="b" type="f" corresp="#s7:l2">Aerde</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dits ’t eynde van mijn <rhyme label="a" type="m">zang</rhyme>:</l>
        <l id="s8:l2" met="2" type="-+">Vlucht van de <rhyme label="b" type="f">zonde</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Niet dan als van een <rhyme label="a" type="m" corresp="#s8:l1">slang</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Nae schrifts <rhyme label="b" type="f" corresp="#s8:l2">oorkonden</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Want zy wast toch <rhyme label="c" type="m">alleen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Die onze ziel <rhyme label="c" type="m" corresp="#s8:l5">vertre’en</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">Iae Christus waerde <rhyme label="c" type="m" corresp="#s8:l5">le’en</rhyme></l>
        <l id="s8:l8" met="2" type="-+">Heeft durven <rhyme label="b" type="f" corresp="#s8:l2">wonden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
