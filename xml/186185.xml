    <tags/>
    <melody>Uit liefde voor het mannelijk geslacht</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Het is al vaak <rhyme label="a" type="f">gebleken</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat weet ook <rhyme label="b" type="m">iedereen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De mannen hebben <rhyme label="a" type="f" corresp="#s1:l1">streken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Én zonder is er <rhyme label="b" type="m" corresp="#s1:l2">geen</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Zij kennen alle <rhyme label="c" type="f">wegen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die leiden naar ons <rhyme label="d" type="m">hart</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">En als dit is <rhyme label="c" type="f" corresp="#s1:l5">verkregen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Dan eerst begint de <rhyme label="d" type="m" corresp="#s1:l6">smart</rhyme>;</l>
        <l id="s1:l9" met="3" type="-+">Dan hoort men ons slechts <rhyme label="e" type="f">zeggen</rhyme>:</l>
        <l id="s1:l10" met="3" type="-+">Dit had ik wel <rhyme label="f" type="m">verwacht</rhyme>!</l>
        <l id="s1:l11" met="6" type="+-">Wat doet men niet uit <rhyme label="f" type="m" corresp="#s1:l10">liefde</rhyme></l>
        <l id="s1:l12" met="6" type="-+">voor 't mannelijk <rhyme label="f" type="m" corresp="#s1:l10">geslacht</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Bij 't zachte <rhyme label="a" type="f">sterfgeflonker</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daar wandelt op het <rhyme label="b" type="m">dak</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Een katje in <rhyme label="a" type="f" corresp="#s2:l1">halfdonker</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die met een kater <rhyme label="b" type="m" corresp="#s2:l2">sprak</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">De knecht hoort hun <rhyme label="c" type="f">miauwen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hij grijpt fluks naar een <rhyme label="d" type="m">stok</rhyme></l>
        <l id="s2:l7" met="3" type="-+">En heeft er op <rhyme label="c" type="f" corresp="#s2:l5">gehouwen</rhyme>;</l>
        <l id="s2:l8" met="3" type="-+">Wat of zij toen <rhyme label="d" type="m" corresp="#s2:l6">verschrok</rhyme>!</l>
        <l id="s2:l9" met="3" type="-+">Maar zij verdroeg de <rhyme label="e" type="f">slagen</rhyme>;</l>
        <l id="s2:l10" met="3" type="-+">Wie had zoo iets <rhyme label="f" type="m">verwacht</rhyme>?</l>
        <l id="s2:l11" met="6" type="+-">Wat doet men niet uit <rhyme label="f" type="m" corresp="#s2:l10">liefde</rhyme></l>
        <l id="s2:l12" met="6" type="-+">voor 't mannelijk <rhyme label="f" type="m" corresp="#s2:l10">geslacht</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De oorlog is <rhyme label="a" type="f">geëindigd</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">De troepen gaan naar <rhyme label="b" type="m">huis</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Het schijnt, dat 't Anna <rhyme label="a" type="f" corresp="#s3:l1">pijnigt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ze heeft geen rust meer <rhyme label="b" type="m" corresp="#s3:l2">thuis</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Ook hij zal gaan <rhyme label="c" type="f">vertrekken</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van wien zij, o, zoo <rhyme label="d" type="m">vaak</rhyme>!</l>
        <l id="s3:l7" met="3" type="-+">Op afgelegen <rhyme label="c" type="f" corresp="#s3:l5">plekken</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Veel goedheid had <rhyme label="d" type="m" corresp="#s3:l6">gesmaakt</rhyme>.</l>
        <l id="s3:l9" met="3" type="-+">Neen, bij hem, eeuwig bij <rhyme label="e" type="f">hem</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Zij volgt hem <rhyme label="f" type="m">onverwacht</rhyme> -</l>
        <l id="s3:l11" met="6" type="+-">Wat doet men niet uit <rhyme label="f" type="m" corresp="#s3:l10">liefde</rhyme></l>
        <l id="s3:l12" met="6" type="-+">voor 't mannelijk <rhyme label="f" type="m" corresp="#s3:l10">geslacht</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Een meisje lief en <rhyme label="a" type="f">teeder</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Werd vuriglijk <rhyme label="b" type="m">bemind</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Zij minde hem wel <rhyme label="a" type="f" corresp="#s4:l1">weder</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Maar Pa was niet <rhyme label="b" type="m" corresp="#s4:l2">gezind</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Haar hand aan hem te <rhyme label="c" type="f">schenken</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">Dus zon zij op een <rhyme label="d" type="m">list</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En zonder lang te <rhyme label="c" type="f" corresp="#s4:l5">denken</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Verdween zij eer men 't <rhyme label="d" type="m" corresp="#s4:l6">wist</rhyme>.</l>
        <l id="s4:l9" met="3" type="-+">Zij was met hem gaan <rhyme label="e" type="f">vluchten</rhyme></l>
        <l id="s4:l10" met="3" type="-+">En fluisterde toen <rhyme label="f" type="m">zacht</rhyme>:</l>
        <l id="s4:l11" met="6" type="+-">Wat doet men niet uit <rhyme label="f" type="m" corresp="#s4:l10">liefde</rhyme></l>
        <l id="s4:l12" met="6" type="-+">voor 't mannelijk <rhyme label="f" type="m" corresp="#s4:l10">geslacht</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sophie staat stil te <rhyme label="a" type="f">vrijen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met haren <rhyme label="b" type="m">grenadier</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Al staan ze op de <rhyme label="a" type="f" corresp="#s5:l1">keien</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Toch hebben ze <rhyme label="b" type="m" corresp="#s5:l2">plezier</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Want still'tjes nam zij <rhyme label="c" type="f">mede</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Een worst en wat <rhyme label="d" type="m">gebak</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En om den lieven <rhyme label="c" type="f" corresp="#s5:l5">vrede</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Stak hij het in zijn <rhyme label="d" type="m" corresp="#s5:l6">zak</rhyme>.</l>
        <l id="s5:l9" met="3" type="-+">Mevrouw verjaagt <rhyme label="e" type="f">Sophietje</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Of zij ook weent of <rhyme label="f" type="m">lacht</rhyme>.</l>
        <l id="s5:l11" met="6" type="+-">Wat doet men niet uit <rhyme label="f" type="m" corresp="#s5:l10">liefde</rhyme></l>
        <l id="s5:l12" met="6" type="-+">voor 't mannelijk <rhyme label="f" type="m" corresp="#s5:l10">geslacht</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Als gij mij wilt <rhyme label="a" type="f">vereeren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met bravo's en <rhyme label="b" type="m">geklap</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Doe 't dan, verzoek ik <rhyme label="a" type="f" corresp="#s6:l1">heeren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Niet enkel voor de <rhyme label="b" type="m" corresp="#s6:l2">grap</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Kon ik u slechts <rhyme label="c" type="f">vermaken</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dan ben ook ik <rhyme label="d" type="m">voldaan</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Om hiertoe te <rhyme label="c" type="f" corresp="#s6:l5">geraken</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Heb ik mijn best <rhyme label="d" type="m" corresp="#s6:l6">gedaan</rhyme>.</l>
        <l id="s6:l9" met="3" type="-+">Had ik nog meer <rhyme label="e" type="f">coupletten</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Ik zong uit al mijn <rhyme label="f" type="m">macht</rhyme>:</l>
        <l id="s6:l11" met="6" type="+-">Wat doet men niet uit <rhyme label="f" type="m" corresp="#s6:l10">liefde</rhyme></l>
        <l id="s6:l12" met="6" type="-+">voor 't mannelijk <rhyme label="f" type="m" corresp="#s6:l10">geslacht</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
