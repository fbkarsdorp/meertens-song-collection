  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NYmphen wilt ghy vreughdigh <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Wacht u <rhyme label="b" type="m">van</rhyme></l>
        <l id="s1:l3" met="4" type="-+">’t Minnen, en wilt deught <rhyme label="a" type="f" corresp="#s1:l1">aen-kleven</rhyme></l>
        <l id="s1:l4" met="2" type="+-">Sonder <rhyme label="b" type="m" corresp="#s1:l2">man</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Minne-lust // vol <rhyme label="c" type="m">on-rust</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Is oorsaeck van ’t <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Als men ’t wel <rhyme label="d" type="m" corresp="#s1:l6">besiet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daer de minn’ in ’t hert kan <rhyme label="a" type="f">dringhen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Maeckt sy ’t <rhyme label="b" type="m">suer</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Dus hoort ieder te <rhyme label="a" type="f" corresp="#s2:l1">bedwinghen</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Haer <rhyme label="b" type="m" corresp="#s2:l2">natuer</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Want den strijdt // die men <rhyme label="c" type="m">lijdt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En brenght ons tot geen <rhyme label="d" type="m">quaet</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Als men hem <rhyme label="d" type="m" corresp="#s2:l6">weer-staet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ghelijck ’t Blixem-licht, dat sterck <rhyme label="a" type="f">en</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Heerlijck <rhyme label="b" type="m">schijnt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat, eer men ‘t wel kan <rhyme label="a" type="f" corresp="#s3:l1">bemercken</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Weer <rhyme label="b" type="m" corresp="#s3:l2">verdwijnt</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Soo en zijn // recht maer <rhyme label="c" type="m">schijn</rhyme></l>
        <l id="s3:l6" met="3" type="-+">De minne-lusten <rhyme label="d" type="m">oock</rhyme></l>
        <l id="s3:l7" met="3" type="+-">t’Achten min als <rhyme label="d" type="m" corresp="#s3:l6">roock</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die de suyverheydt <rhyme label="a" type="f">om-lommert</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Leeft in <rhyme label="b" type="m">vree</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Haer ghedachten zijn <rhyme label="a" type="f" corresp="#s4:l1">bekommert</rhyme></l>
        <l id="s4:l4" met="2" type="+-">Niewers <rhyme label="b" type="m" corresp="#s4:l2">mee</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Maer die mindt // die en <rhyme label="c" type="m">vindt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Niet anders tot het <rhyme label="d" type="m">end</rhyme>’,</l>
        <l id="s4:l7" met="3" type="+-">Dan bedroeft <rhyme label="d" type="m" corresp="#s4:l6">ellend</rhyme>’.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Van all’ die door minn’ hen <rhyme label="a" type="f">voeghen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Tot den <rhyme label="b" type="m">Echt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hoe veel vinden haer <rhyme label="a" type="f" corresp="#s5:l1">vernoeghen</rhyme>?</l>
        <l id="s5:l4" met="2" type="+-">Gheen te <rhyme label="b" type="m" corresp="#s5:l2">recht</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Haest ghetrouwt // langh <rhyme label="c" type="m">berouwt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Is den ghemeynen <rhyme label="d" type="m">loop</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Vraeght den meesten <rhyme label="d" type="m" corresp="#s5:l6">hoop</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nymphen dan ick soud’ u <rhyme label="a" type="f">raden</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Wilt den <rhyme label="b" type="m">strick</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Van de dwase minn’ <rhyme label="a" type="f" corresp="#s6:l1">versmaden</rhyme>,</l>
        <l id="s6:l4" met="2" type="+-">Ghelijck <rhyme label="b" type="m" corresp="#s6:l2">ick</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Reynigheydt // soo men <rhyme label="c" type="m">seydt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die onder-houdt de <rhyme label="d" type="m">jeught</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Ende voedt de <rhyme label="d" type="m" corresp="#s6:l6">deught</rhyme>.</l>
      </lg>
    </lg>
