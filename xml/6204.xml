    <tags/>
    <melody>Hansje sneed het koren</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Pieter-man// niet slapen <rhyme label="a" type="m">kan</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Door 't peysen om de <rhyme label="b" type="f">Vrijster</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Soo kleedt hy hem// en heft zijn <rhyme label="c" type="m">stem</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Tot singhen, als een <rhyme label="b" type="f" corresp="#s1:l2">Lijster</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Doch sijn gezang// gaet droef en <rhyme label="a" type="m">bang</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Doordien het hart van <rhyme label="b" type="f">binnen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Met soete smart// geprickelt <rhyme label="c" type="m">wardt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van weghen zijn <rhyme label="b" type="f" corresp="#s2:l2">Vriendinne</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dus gaet hy sacht// op 't <rhyme label="a" type="m">onverwacht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Voor 't venster van zijn <rhyme label="b" type="f">Grietjen</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Al waer hy speelt// en mede <rhyme label="c" type="m">queelt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Een aerdigh <rhyme label="b" type="f" corresp="#s3:l2">Minne-Liedtjen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als Grietjes hart// dan wacker <rhyme label="a" type="m">wart</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En d' Ooghjes sich <rhyme label="b" type="f">ontsluyten</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Soo komt sy aen// de Venster <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En steekt het hooft daer <rhyme label="b" type="f" corresp="#s4:l2">buyten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als Pieter haer// dan wordt <rhyme label="a" type="m">gewaer</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Hy seght: ach Lief! u <rhyme label="b" type="f">ooghen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Die lichten mijn// als 't <rhyme label="c" type="m">Ster-gheschijn</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Van 's Hemels blaeuwe <rhyme label="b" type="f" corresp="#s5:l2">booghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">V schoonigheydt// o soete <rhyme label="a" type="m">Meyt</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">Heeft my niet laten <rhyme label="b" type="f">rusten</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Mijn docht in't slaep// mijn lieve <rhyme label="c" type="m">Schaep</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Dat ick u Wanghen <rhyme label="b" type="f" corresp="#s6:l2">kusten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dit droomen soet// heeft my 't <rhyme label="a" type="m">gemoet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Met yver gaen <rhyme label="b" type="f">ontsteecken</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Ick most op-staen// en tot u <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Of't hart scheen my te <rhyme label="b" type="f" corresp="#s7:l2">breecken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hier zijnde wil// ick heus, en <rhyme label="a" type="m">stil</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Met u mijn tijdt <rhyme label="b" type="f">verdrijven</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Godt gheve maer// dat ick daer <rhyme label="c" type="m">naer</rhyme></l>
        <l id="s8:l4" met="3" type="-+">V schoonheydt mach <rhyme label="b" type="f" corresp="#s8:l2">beklijven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hierom Vriendin// ist met u <rhyme label="a" type="m">sin</rhyme>:</l>
        <l id="s9:l2" met="3" type="-+">Wilt my daer binnen <rhyme label="b" type="f">laten</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Schout Klappers quaet// die vroeg en <rhyme label="c" type="m">laet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Gaen snoff'len langhs de <rhyme label="b" type="f" corresp="#s9:l2">straten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dit Venus Kint// vriend'lijck <rhyme label="a" type="m">gesint</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Heeft 't deurtjen <rhyme label="b" type="f">op-gheslooten</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dies sy dan van// haer <rhyme label="c" type="m">Pieter-man</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Veel kluchjes heeft <rhyme label="b" type="f" corresp="#s10:l2">ghenooten</rhyme>.</l>
      </lg>
    </lg>
  </text>
