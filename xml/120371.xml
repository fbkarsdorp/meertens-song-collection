    <melody>Een tuinman droef en moedig</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Een tuinman droef en <rhyme label="a" type="f">moedig</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Zong een zoo’n treurig <rhyme label="b" type="m">liet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">In boom en bloemen <rhyme label="a" type="f" corresp="#s1:l1">perken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Zag men hem vlytig <rhyme label="a" type="f" corresp="#s1:l1">werken</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Zijn vlijt mishaegd hem <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy had veel treurige <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En storten traen op <rhyme label="b" type="m">traen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die uit zijn oogen <rhyme label="a" type="f" corresp="#s2:l1">vlooten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De planten reeds <rhyme label="a" type="f" corresp="#s2:l1">begooten</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Den tuinman hief dus <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Geen bloem kan mijn <rhyme label="a" type="f">verheugen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Daer is geen vreede <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Moet ik agter de donk’re <rhyme label="a" type="f" corresp="#s3:l1">muuren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Mijn klaegend leed <rhyme label="a" type="f" corresp="#s3:l1">bezuuren</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Dan zie ik u nooit <rhyme label="b" type="m" corresp="#s3:l2">meer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Geen bloem kan mijn <rhyme label="a" type="f">vermaeken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Terwijl gy de schoonste <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ach, mogt ik op u <rhyme label="a" type="f" corresp="#s4:l1">wagten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ik zou in mijn tuin <rhyme label="a" type="f" corresp="#s4:l1">vernagten</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En staeken al mijn <rhyme label="b" type="m" corresp="#s4:l2">vlijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mijn lieve tuinmans <rhyme label="a" type="f">meisje</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Mijn leven neemt reeds <rhyme label="b" type="m">af</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ach, mogt het mijn eens <rhyme label="a" type="f" corresp="#s5:l1">gelukken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">U aen mijn hart te <rhyme label="a" type="f" corresp="#s5:l1">drukken</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dan graef ik op mijn <rhyme label="b" type="m" corresp="#s5:l2">graf</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Zoo mijn den bloem ziet <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Zoo wensch ik ook myn <rhyme label="b" type="m">dood</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Zy sterven zonder <rhyme label="a" type="f" corresp="#s6:l1">reegen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Zoo sterven ik om uwent <rhyme label="a" type="f" corresp="#s6:l1">weegen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ach, was ik in u <rhyme label="b" type="m" corresp="#s6:l2">schoot</rhyme>.</l>
      </lg>
    </lg>
  </text>
