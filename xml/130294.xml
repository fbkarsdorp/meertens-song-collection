    <tags>
      <tag>love complaint</tag>
    </tags>
    <melody>Ballet Dorothée</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Jongmans, hoort mijn droevig <rhyme label="a" type="f">zugten</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Want ik leef in <rhyme label="a" type="f" corresp="#s1:l1">ongenugten</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Seer <rhyme label="b" type="m">desolaat</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In myn bedroefde <rhyme label="b" type="m" corresp="#s1:l3">staat</rhyme>.</l>
        <l id="s1:l5" met="1" type="-+">Ik <rhyme label="c" type="m">mag</rhyme></l>
        <l id="s1:l6" met="1" type="-+">Den <rhyme label="c" type="m" corresp="#s1:l5">dag</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Met reden wel <rhyme label="d" type="f">beklagen</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Doen ik <rhyme label="e" type="m">eerst</rhyme>,</l>
        <l id="s1:l9" met="2" type="+-"><rhyme label="e" type="m" corresp="#s1:l8">Onbevreesd</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Myn Lief quam om 't Ja-woord <rhyme label="d" type="f" corresp="#s1:l7">vragen</rhyme>.</l>
        <l id="s1:l11" met="2" type="+-">Ag, dat <rhyme label="f" type="m">wast</rhyme>,</l>
        <l id="s1:l12" met="2" type="+-">Armen <rhyme label="f" type="m" corresp="#s1:l11">Gast</rhyme>,</l>
        <l id="s1:l13" met="4" type="+-">Om mijn lieve hals een <rhyme label="f" type="m" corresp="#s1:l11">bast</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ik onnosel Heeren <rhyme label="a" type="f">Knegjen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Vryden na ons lieve <rhyme label="a" type="f" corresp="#s2:l1">Bregjen</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Mijn Sinjeurs <rhyme label="b" type="m">Meit</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Maar hoe ben ik <rhyme label="b" type="m" corresp="#s2:l3">verleit</rhyme>:</l>
        <l id="s2:l5" met="1" type="-+">Die <rhyme label="c" type="m">pry</rhyme></l>
        <l id="s2:l6" met="1" type="-+">Heeft <rhyme label="c" type="m" corresp="#s2:l5">my</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Soo schandelijk <rhyme label="d" type="f">bedrogen</rhyme>!</l>
        <l id="s2:l8" met="2" type="+-">Dese <rhyme label="e" type="m">sloor</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Die gaf <rhyme label="e" type="m" corresp="#s2:l8">voor</rhyme></l>
        <l id="s2:l10" met="4" type="+-">- Maer het was al vals <rhyme label="d" type="f" corresp="#s2:l7">gelogen</rhyme> -</l>
        <l id="s2:l11" met="2" type="+-">Dat sy <rhyme label="f" type="m">had</rhyme></l>
        <l id="s2:l12" met="2" type="+-">Geld en <rhyme label="f" type="m" corresp="#s2:l11">schat</rhyme>,</l>
        <l id="s2:l13" met="4" type="+-">Maar wat grooter kool   was <rhyme label="f" type="m" corresp="#s2:l11">dat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ik Trouden dan met dit zoet <rhyme label="a" type="f">Meisjen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Poezel, blank en glad van <rhyme label="a" type="f" corresp="#s3:l1">vleisjen</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">En ik <rhyme label="b" type="m">zag</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Voor my geen liever <rhyme label="b" type="m" corresp="#s3:l3">dag</rhyme>!</l>
        <l id="s3:l5" met="1" type="-+">Ik <rhyme label="c" type="m">was</rhyme></l>
        <l id="s3:l6" met="1" type="-+">Nog <rhyme label="c" type="m" corresp="#s3:l5">pas</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Getrouwt een vijf, zes <rhyme label="d" type="f">dagen</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Dat ik <rhyme label="e" type="m">haar</rhyme></l>
        <l id="s3:l9" met="2" type="+-">- 't Was heel <rhyme label="e" type="m" corresp="#s3:l8">raar</rhyme> -</l>
        <l id="s3:l10" met="4" type="+-">Na haar Geld begon te <rhyme label="d" type="f" corresp="#s3:l7">vragen</rhyme>.</l>
        <l id="s3:l11" met="2" type="+-">Zy zey: <rhyme label="f" type="m">‘Guit</rhyme>,</l>
        <l id="s3:l12" met="2" type="+-">Ik heb geen <rhyme label="f" type="m" corresp="#s3:l11">duit</rhyme></l>
        <l id="s3:l13" met="4" type="+-">Als mijn Moeders goed voor <rhyme label="f" type="m" corresp="#s3:l11">uit</rhyme>.’</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Daar viel voor my niet ten <rhyme label="a" type="f">besten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">'t Was al nihil op <rhyme label="a" type="f" corresp="#s4:l1">requesten</rhyme>.</l>
        <l id="s4:l3" met="2" type="-+">Myn Vrouw zey: <rhyme label="b" type="m">‘Vrind</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ziet dat gy maar wat <rhyme label="b" type="m" corresp="#s4:l3">wind</rhyme>.</l>
        <l id="s4:l5" met="1" type="-+">Gy <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s4:l6" met="1" type="-+">- Gants <rhyme label="c" type="m" corresp="#s4:l5">bloed</rhyme> -</l>
        <l id="s4:l7" met="3" type="-+">Jou lieve lijfje <rhyme label="d" type="f">stellen</rhyme></l>
        <l id="s4:l8" met="2" type="+-">In die <rhyme label="e" type="m">staat</rhyme></l>
        <l id="s4:l9" met="2" type="+-">- Zoete <rhyme label="e" type="m" corresp="#s4:l8">maat</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">Wilt uw zinnetjes niet <rhyme label="d" type="f" corresp="#s4:l7">kwellen</rhyme> -</l>
        <l id="s4:l11" met="2" type="+-">Om by <rhyme label="f" type="m">dag</rhyme></l>
        <l id="s4:l12" met="2" type="+-">En by <rhyme label="f" type="m" corresp="#s4:l11">nagt</rhyme></l>
        <l id="s4:l13" met="4" type="+-">Te werken met al jou <rhyme label="f" type="m" corresp="#s4:l11">kragt</rhyme>.’</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ag, dagt ik, lieve <rhyme label="a" type="f">Monkeurtje</rhyme>!</l>
        <l id="s5:l2" met="4" type="+-">Was ik als voor dees <rhyme label="a" type="f" corresp="#s5:l1">Sinjeurtje</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Syn <rhyme label="b" type="m">Heeren-Knegt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gy loerde   my niet, <rhyme label="b" type="m" corresp="#s5:l3">Bregt</rhyme>,</l>
        <l id="s5:l5" met="1" type="-+">Maar <rhyme label="c" type="m">nouw</rhyme></l>
        <l id="s5:l6" met="1" type="-+">- O <rhyme label="c" type="m" corresp="#s5:l5">rouw</rhyme>! -</l>
        <l id="s5:l7" met="3" type="-+">Moet ik myn leven <rhyme label="d" type="f">enden</rhyme></l>
        <l id="s5:l8" met="2" type="+-">Met mijn <rhyme label="e" type="m">Bregt</rhyme>,</l>
        <l id="s5:l9" met="2" type="+-">Armen <rhyme label="e" type="m" corresp="#s5:l8">knegt</rhyme>!</l>
        <l id="s5:l10" met="4" type="+-">Ag, wat leef ik in <rhyme label="d" type="f" corresp="#s5:l7">ellenden</rhyme>!</l>
        <l id="s5:l11" met="2" type="+-">Nagt en <rhyme label="f" type="m">dag</rhyme>,</l>
        <l id="s5:l12" met="2" type="+-">Met <rhyme label="f" type="m" corresp="#s5:l11">geklag</rhyme>,</l>
        <l id="s5:l13" met="4" type="+-">Tragt ik na myn <rhyme label="f" type="m" corresp="#s5:l11">Sterrif-dag</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Mijn Beminde lieve <rhyme label="a" type="f">Vroutje</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Holp myn op een <rhyme label="a" type="f" corresp="#s6:l1">Modder-schoutje</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Daar ik, ô <rhyme label="b" type="m">bloed</rhyme>!</l>
        <l id="s6:l4" met="3" type="-+">Schier nagt en dag op <rhyme label="b" type="m" corresp="#s6:l3">vroet</rhyme></l>
        <l id="s6:l5" met="1" type="-+">En <rhyme label="c" type="m">zey</rhyme></l>
        <l id="s6:l6" met="1" type="-+">- O <rhyme label="c" type="m" corresp="#s6:l5">mey</rhyme>! -</l>
        <l id="s6:l7" met="3" type="-+">Zit heele gantsche <rhyme label="d" type="f">dagen</rhyme></l>
        <l id="s6:l8" met="2" type="+-">En drinkt <rhyme label="e" type="m">Thee</rhyme></l>
        <l id="s6:l9" met="2" type="+-">Coffie <rhyme label="e" type="m" corresp="#s6:l8">mee</rhyme>,</l>
        <l id="s6:l10" met="4" type="+-">Chocolaat na haar <rhyme label="d" type="f" corresp="#s6:l7">behagen</rhyme>.</l>
        <l id="s6:l11" met="2" type="+-">Kom ik <rhyme label="f" type="m">t'huis</rhyme>,</l>
        <l id="s6:l12" met="2" type="+-">Zat en <rhyme label="f" type="m" corresp="#s6:l11">buis</rhyme>,</l>
        <l id="s6:l13" met="4" type="+-">Vind ik haar, ô droevig <rhyme label="f" type="m" corresp="#s6:l11">kruis</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Al ons goed heeft zy <rhyme label="a" type="f">verzopen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">'k Heb geen Schoenen om te <rhyme label="a" type="f" corresp="#s7:l1">lopen</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Geen Geld of <rhyme label="b" type="m">Pand</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Waar ik weer in mijn <rhyme label="b" type="m" corresp="#s7:l3">Land</rhyme>!</l>
        <l id="s7:l5" met="1" type="-+">Ons <rhyme label="c" type="m">Bed</rhyme></l>
        <l id="s7:l6" met="1" type="-+"><rhyme label="c" type="m" corresp="#s7:l5">Verzet</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dekens, Lakens en <rhyme label="d" type="f">Sloopen</rhyme>:</l>
        <l id="s7:l8" met="2" type="+-">'k Leg by <rhyme label="e" type="m">nagt</rhyme>,</l>
        <l id="s7:l9" met="2" type="+-">Heel <rhyme label="e" type="m" corresp="#s7:l8">onzagt</rhyme>,</l>
        <l id="s7:l10" met="4" type="+-">Met haar in het stroo <rhyme label="d" type="f" corresp="#s7:l7">gekroopen</rhyme>.</l>
        <l id="s7:l11" met="2" type="+-">'t Is een <rhyme label="f" type="m">Dier</rhyme></l>
        <l id="s7:l12" met="2" type="+-">Dat ik <rhyme label="f" type="m" corresp="#s7:l11">schier</rhyme></l>
        <l id="s7:l13" met="4" type="+-">Dol word van dat slegt <rhyme label="f" type="m" corresp="#s7:l11">pleizier</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ag, bedroeft en gruwel   <rhyme label="a" type="f">Trouwen</rhyme>!</l>
        <l id="s8:l2" met="4" type="+-">Had ik mijn alleen <rhyme label="a" type="f" corresp="#s8:l1">gehouwen</rhyme>!</l>
        <l id="s8:l3" met="2" type="-+">Ag, was ik <rhyme label="b" type="m">weer</rhyme></l>
        <l id="s8:l4" met="3" type="-+">In dienst al van myn <rhyme label="b" type="m" corresp="#s8:l3">Heer</rhyme>:</l>
        <l id="s8:l5" met="1" type="-+">Ik <rhyme label="c" type="m">zou</rhyme></l>
        <l id="s8:l6" met="1" type="-+">Geen <rhyme label="c" type="m" corresp="#s8:l5">Vrouw</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Mijn vryigheid <rhyme label="d" type="f">verkopen</rhyme>.</l>
        <l id="s8:l8" met="2" type="+-">Jonge <rhyme label="e" type="m">Maats</rhyme>,</l>
        <l id="s8:l9" met="2" type="+-">Wilt zoo <rhyme label="e" type="m" corresp="#s8:l8">dwaas</rhyme></l>
        <l id="s8:l10" met="4" type="+-">Niet na u verderf <rhyme label="d" type="f" corresp="#s8:l7">lopen</rhyme>.</l>
        <l id="s8:l11" met="2" type="+-">Spiegelt <rhyme label="f" type="m">jou</rhyme></l>
        <l id="s8:l12" met="2" type="+-">Aan mijn <rhyme label="f" type="m" corresp="#s8:l11">rou</rhyme>,</l>
        <l id="s8:l13" met="4" type="+-">Neemt zoo ligt als ik geen <rhyme label="f" type="m" corresp="#s8:l11">Vrou</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
