    <melody>Ik peins om een persoon</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CHristen broeders <rhyme label="a" type="f">vercoren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die door dat eeuwich <rhyme label="b" type="m">zaet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wederom zijt <rhyme label="a" type="f" corresp="#s1:l1">gheboren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Bevrijdt van't sondich <rhyme label="b" type="m" corresp="#s1:l2">quaet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ghy staet, end' gaet// in't licht <rhyme label="c" type="m">eerbaer</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Volstandich zijn// een cleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s1:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghy smaeckt des Heeren <rhyme label="a" type="f">gaven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Boven uyt s'Hemels <rhyme label="b" type="m">pleyn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Om u Ziele te <rhyme label="a" type="f" corresp="#s2:l1">laven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat goede woordt Gods <rhyme label="b" type="m" corresp="#s2:l2">reyn</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Als een fonteyn, vloeyende <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Volstandich zijn// een cleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s2:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Des Heeren Gheest <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ghy oock deelachtich <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De cracht vant eeuwich <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die smaeckt ghy met <rhyme label="b" type="m" corresp="#s3:l2">jolijt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Ghy neemt den tijdt// van gracy <rhyme label="c" type="m">waer</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Volstandich zijn// een cleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s3:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dat gheduerich <rhyme label="a" type="f">ghestade</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Eeuwich nieu <rhyme label="b" type="m">Testament</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ja Gods rechte <rhyme label="a" type="f" corresp="#s4:l1">ghenade</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daer in staet ghy <rhyme label="b" type="m" corresp="#s4:l2">present</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dus tot den ent// wijckt niet van <rhyme label="c" type="m">haer</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Volstandich zijn// een cleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s4:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghy leydt een <rhyme label="a" type="f">wandelinghe</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Godtlijck nae Christus <rhyme label="b" type="m">ze</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sonder <rhyme label="a" type="f" corresp="#s5:l1">veranderinghe</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In liefde, pays, en <rhyme label="b" type="m" corresp="#s5:l2">vre</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Soo deed Noe// veel hondert <rhyme label="c" type="m">Jaer</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Vostandich zijn// een cleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s5:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy houdt vast aen den <rhyme label="a" type="f">ghenen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die onsienelijck <rhyme label="b" type="m">es</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Al waer hy hier <rhyme label="a" type="f" corresp="#s6:l1">verschenen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ende saecht hem <rhyme label="b" type="m" corresp="#s6:l2">expres</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Soo deed' Moses// ghy volghet <rhyme label="c" type="m">naer</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Vostandich zijn// een cleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s6:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">T'is waer ghy moet hier <rhyme label="a" type="f">draghen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Het cruys op veel <rhyme label="b" type="m">manier</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Maer om soo weynich <rhyme label="a" type="f" corresp="#s7:l1">daghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Als men moet leven <rhyme label="b" type="m" corresp="#s7:l2">hier</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Zijt goedertier// al vallet <rhyme label="c" type="m">swaer</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Volstandich zijn// een cleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s7:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s7:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">V droefheyt cort en <rhyme label="a" type="f">lichte</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die brengt tot uwen <rhyme label="b" type="m">loon</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Boven maten <rhyme label="a" type="f" corresp="#s8:l1">ghewichte</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Een heerlijckheyt seer <rhyme label="b" type="m" corresp="#s8:l2">schoon</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Des levens croon// o cleyne <rhyme label="c" type="m">schaer</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Volstandich zijn// een cleyn <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s8:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s8:l5">maer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
