  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">‘t IS wie wil hooren <rhyme label="a" type="f">singen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Al van vreugde een nieuw <rhyme label="b" type="m">Lied</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En wat hier is <rhyme label="b" type="m" corresp="#s1:l2">geschiet</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Luystert toe men salt u <rhyme label="a" type="f" corresp="#s1:l1">singen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Van een Minnaer met zijn <rhyme label="b" type="m" corresp="#s1:l2">Lief</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">En als ick ga over de <rhyme label="a" type="f">straten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Al de Luy wijsen mijn <rhyme label="b" type="m">na</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En ick pleeg met mijn Lief te <rhyme label="b" type="m" corresp="#s2:l2">gaen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">maer nu heeft sy mijn <rhyme label="a" type="f" corresp="#s2:l1">verlaten</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Siet ick bender qualijck <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wel hoe soetjes is het <rhyme label="a" type="f">vryen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Als een Minnaer valt te <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En dan is ’t och Liefje <rhyme label="b" type="m" corresp="#s3:l2">soet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En hy gaf mijn so menig <rhyme label="a" type="f" corresp="#s3:l1">kusje</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Al onder de Boomtjes <rhyme label="b" type="m" corresp="#s3:l2">groen</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">En adjeu dan mijn <rhyme label="a" type="f">Engel</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Wel adjeu ick roep <rhyme label="b" type="m">overluyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En ik blijf u waerde <rhyme label="b" type="m" corresp="#s4:l2">Bruyt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En ick blijf u <rhyme label="a" type="f" corresp="#s4:l1">Dienaeresse</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Tot de Doodt ons beyde <rhyme label="b" type="m" corresp="#s4:l2">scheyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wel adjeu dan mijnen <rhyme label="a" type="f">Engel</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Wel adjeu mijn waerde <rhyme label="b" type="m">pant</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En al treck ick uyt het <rhyme label="b" type="m" corresp="#s5:l2">lant</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ik en treck niet uyt de <rhyme label="a" type="f" corresp="#s5:l1">Werelt</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Of ick kom wel weer te <rhyme label="b" type="m" corresp="#s5:l2">Lant</rhyme>.</l>
      </lg>
    </lg>
  </text>
