  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GOet saligh <rhyme label="a" type="m">Nieuwe-Jaer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wensch ik u in den <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Laet ons nu <rhyme label="a" type="m" corresp="#s1:l1">allegaer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Vlijtelijk tot hem <rhyme label="b" type="f" corresp="#s1:l2">keere</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">'t Is nu niet veer te <rhyme label="c" type="f">reysen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hy is <rhyme label="d" type="m">Emanuel</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Met liefd' en goe' <rhyme label="c" type="f" corresp="#s1:l5">gepeysen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Kan men hem vinden <rhyme label="d" type="m" corresp="#s1:l6">wel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Laet ons hem soeken <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Op dat het pak der <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Daer wy mee' sijn <rhyme label="a" type="m" corresp="#s2:l1">belaen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van hem eens werd' <rhyme label="b" type="f" corresp="#s2:l2">ontbonden</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Hy wil ons door sijn <rhyme label="c" type="f">lijden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hier in behelp'lijk <rhyme label="d" type="m">sijn</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Dus laet hy hem <rhyme label="c" type="f" corresp="#s2:l5">besnijden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Op 't Nieuwe-Jaers <rhyme label="d" type="m" corresp="#s2:l6">termijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe overdadigh <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Moet onsen Heer wel <rhyme label="b" type="f">weesen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat hy alreed' sijn <rhyme label="a" type="m" corresp="#s3:l1">bloet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Stort om ons te <rhyme label="b" type="f" corresp="#s3:l2">geneesen</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Wat sal hy ons al <rhyme label="c" type="f">geven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Soo wy van nu <rhyme label="d" type="m">voortaen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Leggen een deughdigh <rhyme label="c" type="f" corresp="#s3:l5">leven</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En onse sond' <rhyme label="d" type="m" corresp="#s3:l6">afstaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy sal ons <rhyme label="a" type="m">minnelijk</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Aenneemen tot sijn <rhyme label="b" type="f">Broed'ren</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En maken hem <rhyme label="a" type="m" corresp="#s4:l1">gelijk</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Erfgenaem van sijn <rhyme label="b" type="f" corresp="#s4:l2">goed'ren</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dan sal men door sijn <rhyme label="c" type="f">grati'</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En Goddelijke <rhyme label="d" type="m">min</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Weesen tot aller <rhyme label="c" type="f" corresp="#s4:l5">spati</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Vrolijk in onsen <rhyme label="d" type="m" corresp="#s4:l6">sin</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">En door sijn Heyligh <rhyme label="a" type="m">bloet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sal hy ons siel <rhyme label="b" type="f">verklaren</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Door sijne geeste <rhyme label="a" type="m" corresp="#s5:l1">goet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Sal hy ons wel <rhyme label="b" type="f" corresp="#s5:l2">bewaren</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Met sijne <rhyme label="c" type="f">Sacramenten</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Hy ons begiften <rhyme label="d" type="m">sal</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Hy sal ons dan <rhyme label="c" type="f" corresp="#s5:l5">inprenten</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Volheydt der deughden <rhyme label="d" type="m" corresp="#s5:l6">al</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dan sal men met <rhyme label="a" type="m">voorspoet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wandelen sijne <rhyme label="b" type="f">wegen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">'t Quaet laten, en doen <rhyme label="a" type="m" corresp="#s6:l1">goet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Vol geluk door sijn <rhyme label="b" type="f" corresp="#s6:l2">seegen</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Dan sullen wy <rhyme label="c" type="f">verbeyden</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dat hy tot onsen <rhyme label="d" type="m">loon</rhyme></l>
        <l id="s6:l7" met="3" type="-+">In d'Hemel sal <rhyme label="c" type="f" corresp="#s6:l5">bereyden</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Den glorieusen <rhyme label="d" type="m" corresp="#s6:l6">Kroon</rhyme>.</l>
      </lg>
    </lg>
  </text>
