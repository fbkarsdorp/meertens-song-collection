    <melody>Op heden voor de dageraad</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEs menschen zotte <rhyme label="a" type="m">slechticheyd</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Verblint in eyghen <rhyme label="b" type="m">baat</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Bidt God met <rhyme label="a" type="m" corresp="#s1:l1">ongherechticheyd</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Al om haar hooghste <rhyme label="b" type="m" corresp="#s1:l2">quaad</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Maar die hem zelf <rhyme label="b" type="m" corresp="#s1:l2">verstaat</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Begheert niet zonder <rhyme label="b" type="m" corresp="#s1:l2">raad</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De luyden en bekennen// <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hen zelf noch Gode <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Door onverstand zy schennen// <rhyme label="a" type="m" corresp="#s2:l1">nu</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Haar leven met <rhyme label="b" type="m" corresp="#s2:l2">verdriet</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">En kiezen niet voor <rhyme label="b" type="m" corresp="#s2:l2">iet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Want elck op tytlyk <rhyme label="b" type="m" corresp="#s2:l2">ziet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Staat, Ryckdom, eer, <rhyme label="a" type="m">wellusticheyd</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met macht nu elck <rhyme label="b" type="m">begheert</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Tverkryghen maackt <rhyme label="a" type="m" corresp="#s3:l1">onrusticheyd</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tmisbruyck den dwazen <rhyme label="b" type="m" corresp="#s3:l2">deert</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Want tis hem al <rhyme label="b" type="m" corresp="#s3:l2">verkeert</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En tscheyd met droefheyds <rhyme label="b" type="m" corresp="#s3:l2">steert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maar die de liefd aanmercken// <rhyme label="a" type="m">kan</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die God tot ons waard <rhyme label="b" type="m">draaght</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Neemt vrolyck al Gods wercken// <rhyme label="a" type="m" corresp="#s4:l1">an</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hem nerghens af <rhyme label="b" type="m" corresp="#s4:l2">beklaaght</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Al schynt dat God hem <rhyme label="b" type="m" corresp="#s4:l2">plaaght</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Zyn moed blyft <rhyme label="b" type="m" corresp="#s4:l2">onverzaaght</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dees Prins laat al <rhyme label="a" type="m">tverghanckelyck</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En zoeckt een ghoed <rhyme label="b" type="m">ghemoed</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Gods wille volght hy <rhyme label="a" type="m" corresp="#s5:l1">danckelyck</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Des menschen hooghste <rhyme label="b" type="m" corresp="#s5:l2">ghoed</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Daar zyn begheert na <rhyme label="b" type="m" corresp="#s5:l2">spoet</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Ghelyck int zuur en <rhyme label="b" type="m" corresp="#s5:l2">zoet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
