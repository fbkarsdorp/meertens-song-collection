    <melody>Roosjes in de mei</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIe datter een vreedsaem huys wil <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">En vrolijck wil <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Die moet, de dertele Overdaed <rhyme label="a" type="m" corresp="#s1:l1">vlien</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Want haer treken, die breken, en <rhyme label="c" type="m">steken</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Met smert en <rhyme label="b" type="m" corresp="#s1:l2">pijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'t Genoegen isser soo groote <rhyme label="a" type="m">schat</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Een soo groote <rhyme label="b" type="m">deughd'</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Dat alles met goet genoegen <rhyme label="a" type="m" corresp="#s2:l1">aenvat</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Want Godts gaven, en have, die <rhyme label="c" type="m">laven</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Den Mensch met <rhyme label="b" type="m" corresp="#s2:l2">vreughd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het matigh kosjen smaeckt hem soo <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Hoe slecht hy 't oock <rhyme label="b" type="m">heeft</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Want hy genoeght in 't danckbaer <rhyme label="a" type="m" corresp="#s3:l1">gemoed</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Van Godts zegen, verkregen, ter <rhyme label="c" type="m">degen</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Hy rijcklijck <rhyme label="b" type="m" corresp="#s3:l2">leeft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Der grooten weelderigh <rhyme label="a" type="m">overschot</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Dat baert hem geen <rhyme label="b" type="m">smert</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Hy siet het wel aen, maer acht het <rhyme label="a" type="m" corresp="#s4:l1">spot</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Want haer weelde, vereelde, noch <rhyme label="c" type="m">deelde</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Noyt droevigh <rhyme label="b" type="m" corresp="#s4:l2">hert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'t Vernoegend hert dat past hier niet <rhyme label="a" type="m">op</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Wegh, wegh, <rhyme label="b" type="m">Overdaed</rhyme>!</l>
        <l id="s5:l3" met="4" type="-+">Al hijstmen het zeyltjen tot in den <rhyme label="a" type="m" corresp="#s5:l1">top</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat brallen, dat prallen, sal <rhyme label="c" type="m">vallen</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Met schand en <rhyme label="b" type="m" corresp="#s5:l2">smaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ey nuttight dese leckere <rhyme label="a" type="m">kost</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">En dees frissche <rhyme label="b" type="m">dranck</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">En singht den Schepper, die dese <rhyme label="a" type="m" corresp="#s6:l1">most</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die het leven, het zweven, <rhyme label="c" type="m">gegeven</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Heeft, lof en <rhyme label="b" type="m" corresp="#s6:l2">danck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wel veyl'ge staet, en vrolijck by <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Vol lieflijcke <rhyme label="b" type="m">lust</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Ey weest met 's Heeren segen te <rhyme label="a" type="m" corresp="#s7:l1">vreen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Schoon de quade, ons schaden, en <rhyme label="c" type="m">smaden</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Op onse <rhyme label="b" type="m" corresp="#s7:l2">rust</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
