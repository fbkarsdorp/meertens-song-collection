    <melody>Wat hebt gij mij te vragen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Laet ons den Heere <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Van al dat hy ons <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Want wy verwachten al van Godt hier <rhyme label="a" type="f" corresp="#s1:l1">boven</rhyme></l>
        <l id="s1:l4" met="4" type="-+">‘t Zy gheluck oft <rhyme label="b" type="m" corresp="#s1:l2">teghenspoet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Van hem komt anders niet dan <rhyme label="b" type="m" corresp="#s1:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wy moghen hem wel <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Want groot is sijnen <rhyme label="b" type="m">Naem</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Doen wy laghen in des doodts <rhyme label="a" type="f" corresp="#s2:l1">verseeren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Heeft hy ons in ghenaden <rhyme label="b" type="m" corresp="#s2:l2">ontfaen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Als hy hem liet aen ‘t Kruyce <rhyme label="b" type="m" corresp="#s2:l2">slaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het Kruys heeft hy <rhyme label="a" type="f">ghedraghen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Voor onse zonden <rhyme label="b" type="m">snoot</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Hy was veracht, bespot, versmaet, <rhyme label="a" type="f" corresp="#s3:l1">gheslagen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Ghekroont, ghekruyst, gesmaeckt de <rhyme label="b" type="m" corresp="#s3:l2">doot</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dit leedt hy al uyt liefden <rhyme label="b" type="m" corresp="#s3:l2">groot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe souden wy uyt <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sijn groote liefde <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Die hy bewijst aen ons, vol van <rhyme label="a" type="f" corresp="#s4:l1">gebreken</rhyme>?</l>
        <l id="s4:l4" met="4" type="-+">Dus laet ons nu met sin en <rhyme label="b" type="m" corresp="#s4:l2">moet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Gaen doen nae sijnen wille <rhyme label="b" type="m" corresp="#s4:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Uyt liefde is hy <rhyme label="a" type="f">ghekomen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Al uyt sijns Vaders <rhyme label="b" type="m">Rijck</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">En heeft Hel, Duyvel, Doot, haer macht <rhyme label="a" type="f" corresp="#s5:l1">benomen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dus laet ons hem alle <rhyme label="b" type="m" corresp="#s5:l2">ghelijck</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Van herten volghen <rhyme label="b" type="m" corresp="#s5:l2">blijdelijck</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De liefde heeft hem <rhyme label="a" type="f">ghedronghen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dit mach elck mercken <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">Want van sijn eygen volck wert hy <rhyme label="a" type="f" corresp="#s6:l1">gedwonghen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Sy vielen hem also <rhyme label="b" type="m" corresp="#s6:l2">rebel</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Al met tormenten wreedt en <rhyme label="b" type="m" corresp="#s6:l2">fel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De Persse heeft hy <rhyme label="a" type="f">ghetreden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Met grooten arbeydt <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">Ende voor ons heeft hy den strijdt <rhyme label="a" type="f" corresp="#s7:l1">gestreden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dit was den wille van sijnen <rhyme label="b" type="m" corresp="#s7:l2">Vaer</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Om ons te verlossen <rhyme label="b" type="m" corresp="#s7:l2">allegaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O vrienden <rhyme label="a" type="f">uyt-verkoren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Laet ons sonder <rhyme label="b" type="m">respijt</rhyme>,</l>
        <l id="s8:l3" met="5" type="-+">Malkanderen lief hebben nae ‘t <rhyme label="a" type="f" corresp="#s8:l1">behooren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Al tot onsen naesten <rhyme label="b" type="m" corresp="#s8:l2">profijt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Elck sie wel toe, dat hy hem <rhyme label="b" type="m" corresp="#s8:l2">quijt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Laet liefde altijdts <rhyme label="a" type="f">blijcken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">O Vrienden groot en <rhyme label="b" type="m">kleyn</rhyme>,</l>
        <l id="s9:l3" met="5" type="-+">Waer dat ghy zijt, in Landen, Steden of <rhyme label="a" type="f" corresp="#s9:l1">wijcken</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Dit leert ons Christus al <rhyme label="b" type="m" corresp="#s9:l2">ghemeyn</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Lief te hebben van herten <rhyme label="b" type="m" corresp="#s9:l2">reyn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">De liefde kant al <rhyme label="a" type="f">verdraghen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Al doet men haer <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s10:l3" met="5" type="-+">De liefde blijft eeuwelijck sonder <rhyme label="a" type="f" corresp="#s10:l1">vertraghen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">De liefde en soeckt dat hare <rhyme label="b" type="m" corresp="#s10:l2">niet</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Godt is de liefde, nae Schrifts <rhyme label="b" type="m" corresp="#s10:l2">bediet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Hoort alle Christen <rhyme label="a" type="f">Schapen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Doet al nae Gods <rhyme label="b" type="m">Sermoen</rhyme>,</l>
        <l id="s11:l3" met="5" type="-+">Wy zijn doch al te mael onnutte <rhyme label="a" type="f" corresp="#s11:l1">Knapen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Want nwy ‘t al schuldigh zijn te <rhyme label="b" type="m" corresp="#s11:l2">doen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Dus laet ons al tot deughden <rhyme label="b" type="m" corresp="#s11:l2">spoen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">O vrienden alle <rhyme label="a" type="f">gader</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Danckt, looft, prijst Godt den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s12:l3" met="5" type="-+">Want hy is een barmhertighe <rhyme label="a" type="f" corresp="#s12:l1">Vader</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Is ‘t dat wy doen nae sijnder <rhyme label="b" type="m" corresp="#s12:l2">Leer</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Hy is alleen weerdt prijs en <rhyme label="b" type="m" corresp="#s12:l2">eer</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Wy moeten ‘t woordt <rhyme label="a" type="f">beleven</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">De nauwe Poort in <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s13:l3" met="5" type="-+">Geene menschen vreesen, soo staet <rhyme label="a" type="f" corresp="#s13:l1">gheschreven</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Hoe sy ons dreyghen oft <rhyme label="b" type="m" corresp="#s13:l2">slaen</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">So sullen wy de Kroon <rhyme label="b" type="m" corresp="#s13:l2">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Laet ons liefde <rhyme label="a" type="f">bewijsen</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Aen die zijn sieck en <rhyme label="b" type="m">kranck</rhyme>,</l>
        <l id="s14:l3" met="5" type="-+">Den naekten kleden, den hongerigen <rhyme label="a" type="f" corresp="#s14:l1">spijsen</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Versoeken der Kerckers <rhyme label="b" type="m" corresp="#s14:l2">stanck</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Geerne herberghen sonder <rhyme label="b" type="m" corresp="#s14:l2">bedwanck</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">So sullen wy oock <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Komt in mijn Rijcke <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s15:l3" met="5" type="-+">Maer op de Bocken sal hy hem <rhyme label="a" type="f" corresp="#s15:l1">verstooren</rhyme>.</l>
        <l id="s15:l4" met="4" type="-+">Als hy tot haer sal spreken <rhyme label="b" type="m" corresp="#s15:l2">schier</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Gaet van my in ‘t eeuwigh <rhyme label="b" type="m" corresp="#s15:l2">vier</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Hier mee so wil ick ‘t <rhyme label="a" type="f">laten</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Wilt dit in danck <rhyme label="b" type="m">ontfaen</rhyme>,</l>
        <l id="s16:l3" met="5" type="-+">De liefde wilt vast in u herten <rhyme label="a" type="f" corresp="#s16:l1">vaten</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">En willet al in ‘t goede <rhyme label="b" type="m" corresp="#s16:l2">slaen</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Uyt rechter liefden is ‘t <rhyme label="b" type="m" corresp="#s16:l2">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Ick wil hem eeuwigh <rhyme label="a" type="f">dancken</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Den Prince <rhyme label="b" type="m">triumphant</rhyme>,</l>
        <l id="s17:l3" met="5" type="-+">Of ick moxht zijn bequaem tot sijne <rhyme label="a" type="f" corresp="#s17:l1">rancken</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Biedt my (O Heer) daer toe u <rhyme label="b" type="m" corresp="#s17:l2">handt</rhyme>,</l>
        <l id="s17:l5" met="4" type="-+">Bewaert u volck aen elcken <rhyme label="b" type="m" corresp="#s17:l2">kant</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
