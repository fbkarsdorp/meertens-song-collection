  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">INt schimm 'rige <rhyme label="a" type="f">donker</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Eer Phoebi <rhyme label="a" type="f" corresp="#s1:l1">gefloncker</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Om d' Oosterpoolen <rhyme label="b" type="m">swiert</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Dewijl dat <rhyme label="c" type="f">Aurora</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Ter liefde van <rhyme label="c" type="f" corresp="#s1:l4">Flora</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">De groene landouwen <rhyme label="b" type="m" corresp="#s1:l3">ciert</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Wijl slaap-lust yder heeft <rhyme label="d" type="m">omvaan</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Ontwervel ik de <rhyme label="d" type="m" corresp="#s1:l7">pekel-kraan</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Van mijn Min-yver-graage <rhyme label="e" type="m">borst</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Die soo veel Minne-rampen <rhyme label="e" type="m" corresp="#s1:l9">torst</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Tuyg beemden, en <rhyme label="a" type="f">boomen</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Tuyg Beecken en <rhyme label="a" type="f" corresp="#s2:l1">stroomen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">'t Lieftokkelende <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Wen Cupidoos <rhyme label="c" type="f">dartlen</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Ons Zieltjes dee <rhyme label="c" type="f" corresp="#s2:l4">spartlen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In Paphos weeldrige <rhyme label="b" type="m" corresp="#s2:l3">vloet</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Wen ik Ã´ heyl! als <rhyme label="d" type="m">Bruydegom</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Junonis Elpentroon <rhyme label="d" type="m" corresp="#s2:l7">beklom</rhyme>:</l>
        <l id="s2:l9" met="4" type="-+">O soet doch haast vervloogen <rhyme label="e" type="m">vreucht</rhyme>!</l>
        <l id="s2:l10" met="4" type="-+">Hoe prangt gy 't hert met <rhyme label="e" type="m" corresp="#s2:l9">ongeneucht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Siel roovende <rhyme label="a" type="f">pronkje</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Sal noyt meer een <rhyme label="a" type="f" corresp="#s3:l1">lonkje</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ontdooyen 't Ysig' <rhyme label="b" type="m">hert</rhyme>?</l>
        <l id="s3:l4" met="2" type="-+">Sal nimmer een <rhyme label="c" type="f">streekje</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Wt weerliefdens <rhyme label="c" type="f" corresp="#s3:l4">beekje</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Omswadderen liefdens <rhyme label="b" type="m" corresp="#s3:l3">smert</rhyme>?</l>
        <l id="s3:l7" met="4" type="-+">Ik quyn, en teer, en smelt tot <rhyme label="d" type="m">niet</rhyme>:</l>
        <l id="s3:l8" met="4" type="-+">Soo j' inder yll' geen hulp en <rhyme label="d" type="m" corresp="#s3:l7">biet</rhyme>:</l>
        <l id="s3:l9" met="4" type="-+">Minne-God doof: ay? doof, dees <rhyme label="e" type="m">brant</rhyme>:</l>
        <l id="s3:l10" met="4" type="-+">Eer ick op Atroys oever <rhyme label="e" type="m" corresp="#s3:l9">strant</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
