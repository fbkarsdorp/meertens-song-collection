    <melody>Lauda Sion salvatorem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LOoft O Sion den <rhyme label="a" type="f">Behoeder</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Looft uw' Leydtsman ende <rhyme label="a" type="f" corresp="#s1:l1">Voeder</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Met gedicht en soet <rhyme label="b" type="m">geklanck</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Durft zoo veel als all' uw' <rhyme label="c" type="f">krachten</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Konnen doen, en all' uw' <rhyme label="c" type="f" corresp="#s1:l4">machten</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Ghy sult zijn nochtans te <rhyme label="b" type="m" corresp="#s1:l3">kranck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Looft Hem soo ghy Hem kondt <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Hy gaet alle lof te <rhyme label="a" type="f" corresp="#s2:l1">boven</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wat ghy looft 't is niet een <rhyme label="b" type="m">beet</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Dit 's den Theem des lofs <rhyme label="c" type="f">verheven</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">'t Brood dat leeft, en gheeft het <rhyme label="c" type="f" corresp="#s2:l4">leven</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Wordt ons heden voor <rhyme label="b" type="m" corresp="#s2:l3">bereet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Welck', als Hy was <rhyme label="a" type="f">neergeseten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Sijn Apost'len gaf te <rhyme label="a" type="f" corresp="#s3:l1">eeten</rhyme></l>
        <l id="s3:l3" met="4" type="+-">In het laetste <rhyme label="b" type="m">Avond-mael</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Laet den lof dan lustich <rhyme label="c" type="f">klincken</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En 't jolijt des herte <rhyme label="c" type="f" corresp="#s3:l4">blincken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Met genughte, sonder <rhyme label="b" type="m" corresp="#s3:l3">quael</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want men heden houdt <rhyme label="a" type="f">memory</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Hoe dees Maeltijds goe <rhyme label="a" type="f" corresp="#s4:l1">Cibory</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Ons is eerstmael <rhyme label="b" type="m">ingestelt</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Aen dees tafel van den <rhyme label="c" type="f">Koningh</rhyme></l>
        <l id="s4:l5" met="4" type="+-">(Die uyt 's hemels hooge <rhyme label="c" type="f" corresp="#s4:l4">wooningh</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Was gedaelt op 's werelts <rhyme label="b" type="m" corresp="#s4:l3">veld</rhyme>)</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Eyndicht 't Phase van de <rhyme label="a" type="f">Jooden</rhyme></l>
        <l id="s5:l2" met="4" type="+-">(Die ons' Salichmaker <rhyme label="a" type="f" corresp="#s5:l1">dooden</rhyme>)</l>
        <l id="s5:l3" met="4" type="+-">'t Nieuwe Paeschen langh <rhyme label="b" type="m">verwacht</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">'t Nieuw komt 't Oude te <rhyme label="c" type="f">verstooten</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">D' Waerheyd doet de schaduw' <rhyme label="c" type="f" corresp="#s5:l4">vlooten</rhyme></l>
        <l id="s5:l6" met="4" type="+-">'t Licht verdrijft de donck're <rhyme label="b" type="m" corresp="#s5:l3">Nacht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'t Welcken aen dees Maeltijd <rhyme label="a" type="f">dede</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Christus, lasten Hy met <rhyme label="a" type="f" corresp="#s6:l1">zeden</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Oock te doen nae sijne <rhyme label="b" type="m">dood</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Door dees goede <rhyme label="c" type="f">onderwijsingh</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Lovens waerdigh ende <rhyme label="c" type="f" corresp="#s6:l4">prijsingh</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Consacreetmen wijn en <rhyme label="b" type="m" corresp="#s6:l3">brood</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Soo ons wel wordt <rhyme label="a" type="f">voor-gelesen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Wordt in Christi eygen <rhyme label="a" type="f" corresp="#s7:l1">Wesen</rhyme></l>
        <l id="s7:l3" met="4" type="+-">'t Brood verandert, d' wijn in <rhyme label="b" type="m">Bloed</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Dat verstand, noch oogh kan <rhyme label="c" type="f">mercken</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Komt ons door 't geloofs <rhyme label="c" type="f" corresp="#s7:l4">verstercken</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Want Natuur dat niet en <rhyme label="b" type="m" corresp="#s7:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Onder dese twee <rhyme label="a" type="f">figueren</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Teekens, ende gheen <rhyme label="a" type="f" corresp="#s8:l1">natueren</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Schuylt het aldereelst' <rhyme label="b" type="m">juweel</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">'t Vleys is spijs, 't Bloed dranck; in 't <rhyme label="c" type="f">deelen</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Christus blijft nochtans <rhyme label="c" type="f" corresp="#s8:l4">geheele</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Waerlijck onder yder <rhyme label="b" type="m" corresp="#s8:l3">deel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Blijft in 't nutten <rhyme label="a" type="f">ongeschonden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Sonder scheuringh, breuck, of <rhyme label="a" type="f" corresp="#s9:l1">wonden</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Maer geheel wordt Hy <rhyme label="b" type="m">ontfaen</rhyme>.</l>
        <l id="s9:l4" met="4" type="+-">Of Hem een, of veel <rhyme label="c" type="f">ontfangen</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Soo veel een als duysend <rhyme label="c" type="f" corresp="#s9:l4">langen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Noch en wordt Hy dies <rhyme label="b" type="m" corresp="#s9:l3">verdaen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Hem ontfangen goe en <rhyme label="a" type="f">quade</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Maer met zeer verscheyde <rhyme label="a" type="f" corresp="#s10:l1">grade</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Nae den standt van yders <rhyme label="b" type="m">will'</rhyme>:</l>
        <l id="s10:l4" met="4" type="+-">'t Komt de Quae de dood te <rhyme label="c" type="f">geven</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Aen de goede gheeft 'et <rhyme label="c" type="f" corresp="#s10:l4">leven</rhyme>:</l>
        <l id="s10:l6" met="4" type="+-">Siet eens wat een groot <rhyme label="b" type="m" corresp="#s10:l3">verschil</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Als ghy 't Sacrament siet <rhyme label="a" type="f">breeken</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Weest niet in 't Geloof <rhyme label="a" type="f" corresp="#s11:l1">besweeken</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">'t Stuck niet min dan 't g'heel en <rhyme label="b" type="m">heeft</rhyme>.</l>
        <l id="s11:l4" met="4" type="+-">Want het Wesen krijght gheen <rhyme label="c" type="f">hinder</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">'t Teeken wordt alleen maer <rhyme label="c" type="f" corresp="#s11:l4">minder</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">'t Een soo veel als 't and're <rhyme label="b" type="m" corresp="#s11:l3">gheeft</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Christus is hier niet <rhyme label="a" type="f">ontdoocken</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">'t Teeken is alleen <rhyme label="a" type="f" corresp="#s12:l1">gebrooken</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Hy blijft hier g'lijck 't voor Hy <rhyme label="b" type="m">was</rhyme>:</l>
        <l id="s12:l4" met="4" type="+-">Maeckt gheen twijflingh hier te <rhyme label="c" type="f">maecken</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">De natuer of standt der <rhyme label="c" type="f" corresp="#s12:l4">saecken</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Blijft altijd in eene <rhyme label="b" type="m" corresp="#s12:l3">pas</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Siet het brood, het brood der <rhyme label="a" type="f">Eng'len</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Komt sich onder ons <rhyme label="a" type="f" corresp="#s13:l1">vermeng'len</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">En 't wil spijs der Pell'grims <rhyme label="b" type="m">zijn</rhyme>.</l>
        <l id="s13:l4" met="4" type="+-">'t Brood de kind'ren moet de <rhyme label="c" type="f">honden</rhyme></l>
        <l id="s13:l5" met="4" type="+-">Gheensins worden <rhyme label="c" type="f" corresp="#s13:l4">toegesonden</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">'t Sou hen strecken tot <rhyme label="b" type="m" corresp="#s13:l3">fenijn</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">In figuren is 't voor <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Ons in Isaac <rhyme label="a" type="f" corresp="#s14:l1">bewesen</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">En in 't Paesch-lam van de <rhyme label="b" type="m">Jo'on</rhyme>;</l>
        <l id="s14:l4" met="4" type="+-">En in 't Manna, 't welck' te <rhyme label="c" type="f">nutten</rhyme></l>
        <l id="s14:l5" met="4" type="+-">In des wildernisse <rhyme label="c" type="f" corresp="#s14:l4">hutten</rhyme></l>
        <l id="s14:l6" met="4" type="+-">'t Joodsche Vollick was <rhyme label="b" type="m" corresp="#s14:l3">gewoon</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Goeden Herder, Brood <rhyme label="a" type="f">waerachtich</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Weest genadich Jesu <rhyme label="a" type="f" corresp="#s15:l1">machtich</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Spijst, en sterckt, en weert ons <rhyme label="b" type="m">vroom</rhyme>.</l>
        <l id="s15:l4" met="4" type="+-">Maeckt dat wy niet eeuwigh <rhyme label="c" type="f">branden</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">Maer van 's werelts dorre <rhyme label="c" type="f" corresp="#s15:l4">stranden</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Komen tot des hemels <rhyme label="b" type="m" corresp="#s15:l3">boom</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Wilt ons in den hemel <rhyme label="a" type="f">schellen</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Ende aen uw' tafel <rhyme label="a" type="f" corresp="#s16:l1">stellen</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Laet ons U genieten <rhyme label="b" type="m">daer</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Even als des hemels <rhyme label="c" type="f">Borgers</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">Haerder saligheyds <rhyme label="c" type="f" corresp="#s16:l4">besorgers</rhyme>,</l>
        <l id="s16:l6" met="4" type="+-">U, O Heer! aenschouwen <rhyme label="b" type="m" corresp="#s16:l3">klaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
