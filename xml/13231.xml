    </tags>
    <melody>Rozen aan mijn hoedeke</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs het Schaepje was <rhyme label="a" type="f">verlooren</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van den helschen wolf <rhyme label="b" type="m">verleyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Is den Herder ons <rhyme label="a" type="f" corresp="#s1:l1">gebooren</rhyme></l>
        <l id="s1:l4" met="1" type="+-"><rhyme label="c" type="f">Iesus</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Iesus in de <rhyme label="d" type="m">middernacht</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Ons in sijnen Stal <rhyme label="d" type="m" corresp="#s1:l5">verwacht</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En noch tot berouw <rhyme label="b" type="m" corresp="#s1:l2">verbeyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Om dat 't Schaepje niet sou <rhyme label="a" type="f">vreesen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Gaet den Herder in het <rhyme label="b" type="m">wit</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Oock gelijck aen ons wilt <rhyme label="a" type="f" corresp="#s2:l1">wesen</rhyme></l>
        <l id="s2:l4" met="1" type="+-"><rhyme label="c" type="f">Iesus</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Iesus Godt uyt liefde <rhyme label="d" type="m">puer</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Hem bekleet met ons <rhyme label="d" type="m" corresp="#s2:l5">natuer</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En ons hert alsoo <rhyme label="b" type="m" corresp="#s2:l2">besit</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Komt bedeckt met witte <rhyme label="a" type="f">doecken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Van Maria Maget <rhyme label="b" type="m">reyn</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sijn verlooren Schaepje <rhyme label="a" type="f" corresp="#s3:l1">soecken</rhyme></l>
        <l id="s3:l4" met="1" type="+-"><rhyme label="c" type="f">Iesus</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Iesus ons belooft sijn <rhyme label="d" type="m">Rijck</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Als wy worden hem <rhyme label="d" type="m" corresp="#s3:l5">gelijck</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En na sijn exempel <rhyme label="b" type="m" corresp="#s3:l2">kleyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Siet het willigh Schaepje <rhyme label="a" type="f">weyen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Sijnen lieven Herder <rhyme label="b" type="m">naer</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Ons na beter wey wilt <rhyme label="a" type="f" corresp="#s4:l1">leyen</rhyme></l>
        <l id="s4:l4" met="1" type="+-"><rhyme label="c" type="f">Iesus</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Iesus is het <rhyme label="d" type="m">Paradijs</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Is de wey, en ware <rhyme label="d" type="m" corresp="#s4:l5">spijs</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Van sijn Schaepjens <rhyme label="b" type="m" corresp="#s4:l2">allegaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Om sijn Schaepje dit te <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">In een kribbe wort <rhyme label="b" type="m">geleyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Doet den Son daer <rhyme label="a" type="f" corresp="#s5:l1">weder-keeren</rhyme></l>
        <l id="s5:l4" met="1" type="+-"><rhyme label="c" type="f">Iesus</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Iesus al ons <rhyme label="d" type="m">toeverlaet</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Ons bevrijt van 't eeuwigh <rhyme label="d" type="m" corresp="#s5:l5">quaet</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">En den hemel ons <rhyme label="b" type="m" corresp="#s5:l2">bereyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Voor sijn dorstigh Schaepje <rhyme label="a" type="f">vloeden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Oock sijn eerste traentjens <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Klaer als kristallijn, den <rhyme label="a" type="f" corresp="#s6:l1">goeden</rhyme></l>
        <l id="s6:l4" met="1" type="+-"><rhyme label="c" type="f">Iesus</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Iesus oock is de <rhyme label="d" type="m">Fonteyn</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Als het Schaepjen is <rhyme label="d" type="m" corresp="#s6:l5">onreyn</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Wast ons met sijn heyligh <rhyme label="b" type="m" corresp="#s6:l2">bloet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Sijn geboden sijn de <rhyme label="a" type="f">paden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Waer hy 't Schaepjen <rhyme label="b" type="m">overdraecht</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En om metter daet te <rhyme label="a" type="f" corresp="#s7:l1">raden</rhyme>,</l>
        <l id="s7:l4" met="1" type="+-"><rhyme label="c" type="f">Iesus</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Iesus onse <rhyme label="d" type="m">saligheyt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Ons oock tot de <rhyme label="d" type="m" corresp="#s7:l5">suyverheyt</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Is gebooren uyt een <rhyme label="b" type="m" corresp="#s7:l2">Maecht</rhyme>.</l>
      </lg>
    </lg>
  </text>
