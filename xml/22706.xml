<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22706</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag>admonishing song</tag>
    </tags>
    <melody>Ik wil mij gaan verheugen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Die tijt van onsen <rhyme label="a" type="f">Jaren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Is weynich kort unde <rhyme label="b" type="m">kleyn</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Wy moeten van hier <rhyme label="a" type="f" corresp="#s1:l1">varen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Rijck, arm alle <rhyme label="b" type="m" corresp="#s1:l2">ghemeyn</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Hierom <rhyme label="b" type="m" corresp="#s1:l2">certeyn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wy moeten wat <rhyme label="c" type="f">besuyren</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Een kleyn <rhyme label="b" type="m" corresp="#s1:l2">gheweyn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ten sal niet eewich <rhyme label="c" type="f" corresp="#s1:l6">duy-ren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En laet u niet <rhyme label="a" type="f">verdrieten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Al schijnt Godts Arm <rhyme label="b" type="m">swaer</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Wy sullen sijn Rijck <rhyme label="a" type="f" corresp="#s2:l1">ghenieten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Komen in sijn glorie <rhyme label="b" type="m" corresp="#s2:l2">claer</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Want Godt is onsen <rhyme label="b" type="m" corresp="#s2:l2">Vaer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Waerom willen wy <rhyme label="c" type="f">truyren</rhyme>:</l>
        <l id="s2:l7" met="2" type="-+">T'is t'leste <rhyme label="b" type="m" corresp="#s2:l2">Jaer</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ten sal niet eewich <rhyme label="c" type="f" corresp="#s2:l6">duyren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Waerom slaeft ghy Sot dus <rhyme label="a" type="f">seere</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Unde staet op aldus <rhyme label="b" type="m">vroech</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">En meent ghy <rhyme label="a" type="f" corresp="#s3:l1">nimmermeere</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Te hebben goets <rhyme label="b" type="m" corresp="#s3:l2">ghenoech</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">U handt is aen die <rhyme label="b" type="m" corresp="#s3:l2">ploech</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Unde siet om nader <rhyme label="c" type="f">schuyren</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Daer u hert op <rhyme label="b" type="m" corresp="#s3:l2">loech</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Ten sal niet eewich <rhyme label="c" type="f" corresp="#s3:l6">duyren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O Heer al van hier <rhyme label="a" type="f">booven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Der in den hemel <rhyme label="b" type="m">sijt</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">U Woordt sy niet <rhyme label="a" type="f" corresp="#s4:l1">ghelooven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hier inder werlt <rhyme label="b" type="m" corresp="#s4:l2">bevrijt</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Mit grooter <rhyme label="b" type="m" corresp="#s4:l2">spijt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Setten sy ons tusschen die <rhyme label="c" type="f">muyren</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Een korten <rhyme label="b" type="m" corresp="#s4:l2">tijt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Ten sal niet eewich <rhyme label="c" type="f" corresp="#s4:l6">duyren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Prince Godt onsen <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Der voor ons sorghe <rhyme label="b" type="m">draecht</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Ghy sijt onsen <rhyme label="a" type="f" corresp="#s5:l1">Berader</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wie isser der noch <rhyme label="b" type="m" corresp="#s5:l2">claecht</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">Soo het u <rhyme label="b" type="m" corresp="#s5:l2">behaecht</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hebdy ons willen <rhyme label="c" type="f">puyren</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">T'schijnt dat ghy ons <rhyme label="b" type="m" corresp="#s5:l2">plaecht</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Ten sal niet eewich <rhyme label="c" type="f" corresp="#s5:l6">duyren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
