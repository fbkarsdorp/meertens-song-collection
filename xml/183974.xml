    <tags/>
    <melody>Puisque de vivre sans aimer</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GElijck een hert nae 'twater <rhyme label="a" type="m">hijght</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat vloeyt uyt koele <rhyme label="b" type="f">beken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wanneer het groote drooghte <rhyme label="a" type="m" corresp="#s1:l1">krijght</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Door heeten brant <rhyme label="b" type="f" corresp="#s1:l2">ontsteken</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Soo verlanght myn bangh <rhyme label="c" type="m">gemoet</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Naer u, God, myn hooghste <rhyme label="c" type="m" corresp="#s1:l5">goet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ach! wanneer sal myn droeve <rhyme label="a" type="m">geest</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Tot uwe woonplaets <rhyme label="b" type="f">stijgen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Daer ick mocht wesen <rhyme label="a" type="m" corresp="#s2:l1">onbevreest</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En uwen segen <rhyme label="b" type="f" corresp="#s2:l2">krijghen</rhyme>!</l>
        <l id="s2:l5" met="4" type="+-">Daer ick God sal mogen <rhyme label="c" type="m">sien</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Heer wanneer sal dat <rhyme label="c" type="m" corresp="#s2:l5">gheschien</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De tranen die men rollen <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Op myn bedroefde <rhyme label="b" type="f">wangen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat is de spijs die ick <rhyme label="a" type="m" corresp="#s3:l1">gheniet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">In myn benout <rhyme label="b" type="f" corresp="#s3:l2">verlangen</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Mits men roept uyt enckel <rhyme label="c" type="m">spot</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Segh ons nu waer is u <rhyme label="c" type="m" corresp="#s3:l5">Godt</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">My dunckt ick smelt, wanneer ick <rhyme label="a" type="m">peys</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat ick u plagh te <rhyme label="b" type="f">prijsen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En met veel hoopen elcke <rhyme label="a" type="m" corresp="#s4:l1">reys</rhyme></l>
        <l id="s4:l4" met="3" type="-+">V eere gingh <rhyme label="b" type="f" corresp="#s4:l2">bewijsen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Och! mocht ick nu weder <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Daer ick't voortijts heb <rhyme label="c" type="m" corresp="#s4:l5">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Myn ziel, waerom zyt ghy <rhyme label="a" type="m">ontrust</rhyme>?</l>
        <l id="s5:l2" met="3" type="-+">Ey stilt u droeve <rhyme label="b" type="f">sinnen</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Ghy sult noch eens met herten <rhyme label="a" type="m" corresp="#s5:l1">lust</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Des Heeren lof <rhyme label="b" type="f" corresp="#s5:l2">beginnen</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Hoopt, en siet alleen op <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Hy sal verhooren uwe <rhyme label="c" type="m" corresp="#s5:l5">stem</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Eylaes myn geest is gansch <rhyme label="a" type="m">vermoeyt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Heer dien wil ick u <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer's water der Iordane <rhyme label="a" type="m" corresp="#s6:l1">vloeyt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En Herm on staet <rhyme label="b" type="f" corresp="#s6:l2">verheven</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Of daer Misaer zyn <rhyme label="c" type="m">ghehucht</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Heeft ghedreven in de <rhyme label="c" type="m" corresp="#s6:l5">lucht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Heer, u felle <rhyme label="a" type="m">water-vloet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Quam op myn hooft te <rhyme label="b" type="f">ruyschen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dies hoord' ick binnen myn <rhyme label="a" type="m" corresp="#s7:l1">ghemoet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">D'een diept op d'ander <rhyme label="b" type="f" corresp="#s7:l2">bruyschen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Heer, u stroom heeft my <rhyme label="c" type="m">ghequelt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Dat ick schier ben neer <rhyme label="c" type="m" corresp="#s7:l5">ghevelt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Doch evenwel den ganschen <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Sie ick op u <rhyme label="b" type="f">genade</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En oock des snachts, al wat ick <rhyme label="a" type="m" corresp="#s8:l1">mach</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Bid ick, al isset <rhyme label="b" type="f" corresp="#s8:l2">spade</rhyme>;</l>
        <l id="s8:l5" met="4" type="+-">Want ghy zyt myns levens <rhyme label="c" type="m">kracht</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Daer op mijn gansche ziele <rhyme label="c" type="m" corresp="#s8:l5">wacht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ick segh u, God myn <rhyme label="a" type="m">toeverlaet</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">VVaerom ben ick <rhyme label="b" type="f">vergeten</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Dat ick voor yder die my <rhyme label="a" type="m" corresp="#s9:l1">haet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Ligh als geheel <rhyme label="b" type="f" corresp="#s9:l2">verbeten</rhyme>?</l>
        <l id="s9:l5" met="4" type="+-">Waerom moet ick treurigh <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Voor die my dus <rhyme label="c" type="m" corresp="#s9:l5">tegen-staen</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">My dunckt dat yemant my <rhyme label="a" type="m">vermoort</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">VVanneer ick in myn <rhyme label="b" type="f">ooren</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Soo menigh sel en schampper <rhyme label="a" type="m" corresp="#s10:l1">woort</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Moet van myn vyant <rhyme label="b" type="f" corresp="#s10:l2">hooren</rhyme>;</l>
        <l id="s10:l5" met="4" type="+-">Als hy roept, Seght ons, o <rhyme label="c" type="m">vrient</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Waer is de God die ghy soo <rhyme label="c" type="m" corresp="#s10:l5">dient</rhyme>?</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Myn ziel waerom zyt ghy <rhyme label="a" type="m">ontrust</rhyme>?</l>
        <l id="s11:l2" met="3" type="-+">Ey stilt u droeve <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Ghy sult noch eens met herten <rhyme label="a" type="m" corresp="#s11:l1">Iust</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Des Heeren lof <rhyme label="b" type="f" corresp="#s11:l2">beginnen</rhyme>:</l>
        <l id="s11:l5" met="4" type="+-">Hoopten siet alleen op <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Hy sal hooren uwe <rhyme label="c" type="m" corresp="#s11:l5">stem</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
