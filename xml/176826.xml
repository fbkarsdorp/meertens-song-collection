    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>Gevaar gevaar hoe is het met uw vlas</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Ons weghen // Ter <rhyme label="a" type="f">deghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Heer recht voor u <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Uwen Goddelijcken <rhyme label="a" type="f" corresp="#s1:l1">zeghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Gheeft ons Heer sonder <rhyme label="b" type="m" corresp="#s1:l2">verbeyt</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Dat wy recht <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Vast op u <rhyme label="c" type="m" corresp="#s1:l5">baen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En houden u <rhyme label="d" type="m">Sermoen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Want sonder Heer u <rhyme label="e" type="f">hulpe</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">So en konnen wy niet <rhyme label="d" type="m" corresp="#s1:l7">ghedoen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Te vooren // <rhyme label="a" type="f">Verlooren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Waren wy al <rhyme label="b" type="m">ghelijck</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Door Adams Val tot <rhyme label="a" type="f" corresp="#s2:l1">thooren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ghestooten uyt Gods <rhyme label="b" type="m" corresp="#s2:l2">Rijck</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Maer doen Christus <rhyme label="c" type="m">quam</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En hy wech <rhyme label="c" type="m" corresp="#s2:l5">nam</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Al onse zonden <rhyme label="d" type="m">swaer</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Alleen door sijn <rhyme label="e" type="f">verdiensten</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Heeft hy ons ghereynight <rhyme label="d" type="m" corresp="#s2:l7">klaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Onsâ€™ zonden // Die <rhyme label="a" type="f">bonden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Den Throon van vreughden <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Nu is van Godt <rhyme label="a" type="f" corresp="#s3:l1">ghesonden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die draeght der zonden <rhyme label="b" type="m" corresp="#s3:l2">last</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Dat beloof dse <rhyme label="c" type="m">zaet</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Ons <rhyme label="c" type="m" corresp="#s3:l5">toe-verlaet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hy maeckt ons met hem <rhyme label="d" type="m">ghemeen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Hy is alleen ons <rhyme label="e" type="f">Middelaer</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">By den Vader, en anders <rhyme label="d" type="m" corresp="#s3:l7">gheen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Prince // <rhyme label="a" type="f">Bemintse</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">U aerden Vaetkens <rhyme label="b" type="m">broos</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Voor u uyt-verkoren <rhyme label="a" type="f" corresp="#s4:l1">kintse</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als is haer leven <rhyme label="b" type="m" corresp="#s4:l2">boos</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Wy kranck als <rhyme label="c" type="m">riet</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Vermoghen <rhyme label="c" type="m" corresp="#s4:l5">niet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Tot u Heer willen wy <rhyme label="d" type="m">vlien</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Zijn wy in liefde <rhyme label="e" type="f">vyerigh</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Het moet al door u <rhyme label="d" type="m" corresp="#s4:l7">gheschien</rhyme>.</l>
      </lg>
    </lg>
  </text>
