  <author>Hendrick Jansz. Prins</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OCh! dat ghy als een <rhyme label="a" type="f">broeder</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Van mijn natuer en <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De borsten mijner <rhyme label="a" type="f" corresp="#s1:l1">moeder</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Op aerden suygend' <rhyme label="b" type="m" corresp="#s1:l2">waert</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">Dat ick u op de straten <rhyme label="c" type="m">vond'</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ick soud' met bly ghelaet en <rhyme label="c" type="m" corresp="#s1:l5">mondt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Te kussen <rhyme label="d" type="m">onderstaen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En allen spot <rhyme label="d" type="m" corresp="#s1:l7">versmaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick soud' u binnen <rhyme label="a" type="f">leyden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En brenghen in het <rhyme label="b" type="m">huys</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Mijns Moeders, en <rhyme label="a" type="f" corresp="#s2:l1">verbeyden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat ghy van alle <rhyme label="b" type="m" corresp="#s2:l2">kruys</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Verlossende, my leeren <rhyme label="c" type="m">woud't</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Hoe ick verlost u eeren <rhyme label="c" type="m" corresp="#s2:l5">soud'</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Met specery ten <rhyme label="d" type="m">danck</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Granaten-sap ten <rhyme label="d" type="m" corresp="#s2:l7">dranck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wanneer ick dan <rhyme label="a" type="f">verleghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wat swacker heb <rhyme label="b" type="m">ghelooft</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sijn slincker-handt <rhyme label="a" type="f" corresp="#s3:l1">gesleghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">My onder-stutt' het <rhyme label="b" type="m" corresp="#s3:l2">hooft</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Sijn rechter-handt omarme'r <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Geheel hy mijn Ontfarmer <rhyme label="c" type="m" corresp="#s3:l5">zy</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Gelijck een Man sijn <rhyme label="d" type="m">Vrou</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">In alle druck en <rhyme label="d" type="m" corresp="#s3:l7">rou</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Des ick u, o <rhyme label="a" type="f">Vriendinnen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vermanende <rhyme label="b" type="m">besweer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat geen verlet het <rhyme label="a" type="f" corresp="#s4:l1">minnen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van mijn gheliefden <rhyme label="b" type="m" corresp="#s4:l2">Heer</rhyme></l>
        <l id="s4:l5" met="4" type="-+">En my, van u ghedaen en <rhyme label="c" type="m">werdt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dat by ons mach bestaen, en <rhyme label="c" type="m" corresp="#s4:l5">hert</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En sin, en liefd', en <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">In ongestoorde <rhyme label="d" type="m" corresp="#s4:l7">rust</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wie komt'er uyt het <rhyme label="a" type="f">woeste</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die op haer Liefste <rhyme label="b" type="m">leunt</rhyme>?</l>
        <l id="s5:l3" met="3" type="-+">Ick immers, die daer <rhyme label="a" type="f" corresp="#s5:l1">moeste</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van swackheyt zijn <rhyme label="b" type="m" corresp="#s5:l2">gesteunt</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Ick heb u uyt den slaep <rhyme label="c" type="m">gheweckt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En even als een Schaep <rhyme label="c" type="m" corresp="#s5:l5">gereckt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Al onder <rhyme label="d" type="m">d'Appel-boom</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Naer uw' <rhyme label="d" type="m" corresp="#s5:l7">ghenaden-stroom</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Daer uwe Moeder <rhyme label="a" type="f">baerde</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Met droeve smert, en <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En door 't geloof <rhyme label="a" type="f" corresp="#s6:l1">verklaerde</rhyme></l>
        <l id="s6:l4" met="3" type="-+">V haren troost te <rhyme label="b" type="m" corresp="#s6:l2">zijn</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Set my dan als een teecken <rhyme label="c" type="m">op</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Uw' hert en arm, en reken <rhyme label="c" type="m" corresp="#s6:l5">op</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Mijn smert, en mijn <rhyme label="d" type="m">ghekerm</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Ia mijner u <rhyme label="d" type="m" corresp="#s6:l7">ontferm</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Want liefd', en <rhyme label="a" type="f">liefden-yver</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Is sterck ghelijck de <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Sy is den <rhyme label="a" type="f" corresp="#s7:l1">herten-drijver</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Geweldigh in de <rhyme label="b" type="m" corresp="#s7:l2">noodt</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Als 't graf sy wil verslinden <rhyme label="c" type="m">al</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Wat tegen haer se vinden <rhyme label="c" type="m" corresp="#s7:l5">sal</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Haer kool, en vier, en <rhyme label="d" type="m">vlam</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Geen water wegh en <rhyme label="d" type="m" corresp="#s7:l7">nam</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Geen Zee en doet'se <rhyme label="a" type="f">sincken</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Door op-geloopen <rhyme label="b" type="m">vloedt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Noch gheen revier <rhyme label="a" type="f" corresp="#s8:l1">verdrincken</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Kan deser liefden <rhyme label="b" type="m" corresp="#s8:l2">gloedt</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">En soo noch yemandt alle <rhyme label="c" type="m">goedt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Voor desen gaf, als malle <rhyme label="c" type="m" corresp="#s8:l5">moet</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Hy werden <rhyme label="d" type="m">uyt-gelacht</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">En t'eenemael <rhyme label="d" type="m" corresp="#s8:l7">veracht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Heer, onse kleyne <rhyme label="a" type="f">Suster</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Die noch gheen borsten <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Op datse werdt <rhyme label="a" type="f" corresp="#s9:l1">gheruster</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Moet u zijn <rhyme label="b" type="m" corresp="#s9:l2">aenghekleeft</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Maer wat? als die gestreken <rhyme label="c" type="m">dagh</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Waer in men van haer spreken <rhyme label="c" type="m" corresp="#s9:l5">magh</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Daer is, wat sal men <rhyme label="d" type="m">doen</rhyme>?</l>
        <l id="s9:l8" met="3" type="-+">Om haar gheloof te <rhyme label="d" type="m" corresp="#s9:l7">vo'en</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Soo s'is een muur, wy <rhyme label="a" type="f">willen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Een Silveren <rhyme label="b" type="m">Paleys</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Op haer gaen bouwen, <rhyme label="a" type="f" corresp="#s10:l1">stillen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">'t Verschillen met de <rhyme label="b" type="m" corresp="#s10:l2">pays</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Soo s'is een deur, wy sullen <rhyme label="c" type="m">dan</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Haer om en om vervullen <rhyme label="c" type="m" corresp="#s10:l5">van</rhyme></l>
        <l id="s10:l7" met="3" type="-+">'t Prophetisch woordt, dat <rhyme label="d" type="m">vast</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Als Ceder-boomen <rhyme label="d" type="m" corresp="#s10:l7">wast</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ick ben een muur, mijn <rhyme label="a" type="f">borsten</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Als toorens <rhyme label="b" type="m">uyt-gepsant</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En was in 't oog des <rhyme label="a" type="f" corresp="#s11:l1">Vorsten</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Als een die <rhyme label="b" type="m" corresp="#s11:l2">vrede-vant</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Want sijn ghenaed' van boven <rhyme label="c" type="m">deed'</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Dat ick had' door geloove <rhyme label="c" type="m" corresp="#s11:l5">vreed'</rhyme>.</l>
        <l id="s11:l7" met="3" type="-+">Door sijn behagens <rhyme label="d" type="m">wil</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Tot my, soo wierd' ick <rhyme label="d" type="m" corresp="#s11:l7">stil</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wel rust, de <rhyme label="a" type="f">Vreden-Koningh</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Een Wijngaerd had' <rhyme label="b" type="m">geplant</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">In veler vruchten <rhyme label="a" type="f" corresp="#s12:l1">wooningh</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">En gafs' in Hoeders <rhyme label="b" type="m" corresp="#s12:l2">handt</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Dien, duysent silverlingen <rhyme label="c" type="m">gelt</rhyme></l>
        <l id="s12:l6" met="4" type="-+">Hy voor de vrucht te bringen <rhyme label="c" type="m" corresp="#s12:l5">stelt</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Maer mijne Wijnstock <rhyme label="d" type="m">gaerd</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Ick selven heb <rhyme label="d" type="m" corresp="#s12:l7">bewaerd</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">S' is voor mijn <rhyme label="a" type="f">aengesichte</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">En al de vrucht is <rhyme label="b" type="m">mijn</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Dat silverlinghs <rhyme label="a" type="f" corresp="#s13:l1">gewichte</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">O Salomo! was <rhyme label="b" type="m" corresp="#s13:l2">dijn</rhyme>;</l>
        <l id="s13:l5" met="4" type="-+">Doch noch twee-hondert van de <rhyme label="c" type="m">vrucht</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Tot uwer Hoeders hande <rhyme label="c" type="m" corresp="#s13:l5">vlucht</rhyme>:</l>
        <l id="s13:l7" met="3" type="-+">En die een Wijngaert <rhyme label="d" type="m">pacht</rhyme></l>
        <l id="s13:l8" met="3" type="-+">Sleghs op sijn inkomst <rhyme label="d" type="m" corresp="#s13:l7">acht</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Maer eygen sorch van <rhyme label="a" type="f">boven</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Is over u, mijn <rhyme label="b" type="m">Kerck</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Ghy woonster in de <rhyme label="a" type="f" corresp="#s14:l1">Hoven</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Acht op mijn <rhyme label="b" type="m" corresp="#s14:l2">Acker-werck</rhyme>:</l>
        <l id="s14:l5" met="4" type="-+">Geef met uw' stem een stercke <rhyme label="c" type="m">klop</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Daer uw' ghesellen mercken <rhyme label="c" type="m" corresp="#s14:l5">op</rhyme>.</l>
        <l id="s14:l7" met="3" type="-+">Brengh alle lof en <rhyme label="d" type="m">eer</rhyme></l>
        <l id="s14:l8" met="3" type="-+">Tot my, den eygen <rhyme label="d" type="m" corresp="#s14:l7">Heer</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Lof-veerdigh, o mijn <rhyme label="a" type="f">Heere</rhyme>!</l>
        <l id="s15:l2" met="3" type="-+">Staet mijn gemoedt en <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Op dat ick u <rhyme label="a" type="f" corresp="#s15:l1">vereere</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Als ghy tot aller <rhyme label="b" type="m" corresp="#s15:l2">stondt</rhyme></l>
        <l id="s15:l5" met="4" type="-+">Met uwen Geest wil blijven <rhyme label="c" type="m">by</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">En met uw' komst' gherijven <rhyme label="c" type="m" corresp="#s15:l5">my</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">Ten laetste als een <rhyme label="d" type="m">Rhee</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Ter <rhyme label="d" type="m" corresp="#s15:l7">speceryen-stee</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
