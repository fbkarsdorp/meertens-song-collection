  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Mijn lieve <rhyme label="a" type="f">vriendinne</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Daer ick toe ben <rhyme label="b" type="m">ghesint</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Maria, die ick <rhyme label="a" type="f" corresp="#s1:l1">minne</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Diep in mijn hert <rhyme label="b" type="m" corresp="#s1:l2">gheprint</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Tot u als totter <rhyme label="c" type="f">haven</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Mijn schipken broos ick <rhyme label="d" type="m">stier</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die in dees zee van <rhyme label="c" type="f" corresp="#s1:l5">slaven</rhyme></l>
        <l id="s1:l8" met="3" type="-+">En roovers sterve <rhyme label="d" type="m" corresp="#s1:l6">schier</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zee-sterr', u licht laet <rhyme label="a" type="f">schijnen</rhyme>;</l>
        <l id="s2:l2" met="3" type="-+">Want inden nacht in <rhyme label="b" type="m">vaer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ick ben in duysent <rhyme label="a" type="f" corresp="#s2:l1">pijnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Om dat ick hier en <rhyme label="b" type="m" corresp="#s2:l2">daer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Vrees door 't ghestorm der <rhyme label="c" type="f">winden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En 't baren <rhyme label="d" type="m">t'samen-slaen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Een clip oft plaet te <rhyme label="c" type="f" corresp="#s2:l5">vinden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Daer ick op mocht <rhyme label="d" type="m" corresp="#s2:l6">vergaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Daerom laet <rhyme label="a" type="f">neder-dalen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">(Haest u, niet en <rhyme label="b" type="m">vertoeft</rhyme>)</l>
        <l id="s3:l3" met="3" type="-+">V claer-blinckende <rhyme label="a" type="f" corresp="#s3:l1">stralen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die my zijnde <rhyme label="b" type="m" corresp="#s3:l2">bedroeft</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Al-om moghen <rhyme label="c" type="f">verclaren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En toonen het <rhyme label="d" type="m">dangier</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van winden, rotsen, <rhyme label="c" type="f" corresp="#s3:l5">baren</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Daer ick in seyle <rhyme label="d" type="m" corresp="#s3:l6">hier</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Want sonder u <rhyme label="a" type="f">verloren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Zee-sterr', gheef ick den <rhyme label="b" type="m">moet</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Van achter ende <rhyme label="a" type="f" corresp="#s4:l1">voren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Vaer ick al teghen <rhyme label="b" type="m" corresp="#s4:l2">vloet</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Mijn roer wilt hem <rhyme label="c" type="f">begheven</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Den mast wilt sincken <rhyme label="d" type="m">neer</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Het gaeter om het <rhyme label="c" type="f" corresp="#s4:l5">leven</rhyme>.</l>
        <l id="s4:l8" met="3" type="-+">Te straf is dit <rhyme label="d" type="m" corresp="#s4:l6">onweer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wel-aen dan my de <rhyme label="a" type="f">baecken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Thoont van 't beloofde <rhyme label="b" type="m">landt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Want 't schip begint te <rhyme label="a" type="f" corresp="#s5:l1">kraecken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'T is leck: siet, het <rhyme label="b" type="m" corresp="#s5:l2">versandt</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Het water t'allen <rhyme label="c" type="f">zijden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Breeckt-in met groot <rhyme label="d" type="m">ghewelt</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Merckt eens, in wat een <rhyme label="c" type="f" corresp="#s5:l5">lijden</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Mijn iel haer vint <rhyme label="d" type="m" corresp="#s5:l6">ghestelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Waer uyt, o Maghet <rhyme label="a" type="f">reene</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Daer ick mijn hope op <rhyme label="b" type="m">stel</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Ghy my nu cont <rhyme label="a" type="f" corresp="#s6:l1">alleene</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Wt-helpen niemant <rhyme label="b" type="m" corresp="#s6:l2">el</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Wilt dan de winden <rhyme label="c" type="f">segghen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Oorsaeck van dees <rhyme label="d" type="m">tempeest</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dat sy haer <rhyme label="c" type="f" corresp="#s6:l5">neder-legghen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Tot troost van mijnen <rhyme label="d" type="m" corresp="#s6:l6">gheest</rhyme>.</l>
      </lg>
    </lg>
  </text>
