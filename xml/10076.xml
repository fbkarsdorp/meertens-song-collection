  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-"><rhyme label="a" type="f">ROzaniere</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ziel roofster, ô myn <rhyme label="b" type="f">leve</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">En hert dat <rhyme label="c" type="m">brant</rhyme>!</l>
        <l id="s1:l4" met="5" type="-+">Door wat zwiere hebt ghy daarom <rhyme label="b" type="f" corresp="#s1:l2">gedreve</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Zoo fell een <rhyme label="c" type="m" corresp="#s1:l3">band</rhyme>?</l>
        <l id="s1:l6" met="2" type="-+">Dat ick, als, <rhyme label="d" type="m">sterff</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Vast, quynende, <rhyme label="e" type="m">verteer</rhyme>?</l>
        <l id="s1:l8" met="2" type="-+">Nu door 't <rhyme label="f" type="f">vermogen</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Van uwe <rhyme label="f" type="f" corresp="#s1:l8">oogen</rhyme>,</l>
        <l id="s1:l10" met="2" type="+-">Myn krachte <rhyme label="f" type="f" corresp="#s1:l8">droogen</rhyme>;</l>
        <l id="s1:l11" met="5" type="-+">Ontferm u myns, al eer, al eer, al <rhyme label="g" type="m">eer</rhyme>.</l>
        <l id="s1:l12" met="4" type="+-">Voor dat ick de doodt <rhyme label="e" type="m" corresp="#s1:l7">beërff</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Maar ô <rhyme label="a" type="f">doove</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">U doofheid voor myn <rhyme label="b" type="f">klachten</rhyme></l>
        <l id="s2:l3" met="2" type="-+">En droeve <rhyme label="c" type="m">zangh</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Die stijghd boven de scherpe oogens <rhyme label="b" type="f" corresp="#s2:l2">krachten</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Eens dooft de <rhyme label="c" type="m" corresp="#s2:l3">slang</rhyme>;</l>
        <l id="s2:l6" met="2" type="-+">Want hoe ick <rhyme label="d" type="m">zucht</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Elendich treur, of <rhyme label="e" type="m">karm</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Ghy stopt uwe <rhyme label="f" type="f">ooren</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">En wilt niet <rhyme label="f" type="f" corresp="#s2:l8">hooren</rhyme>,</l>
        <l id="s2:l10" met="2" type="+-">Maer doet myn <rhyme label="f" type="f" corresp="#s2:l8">smooren</rhyme></l>
        <l id="s2:l11" met="5" type="-+">Terwijle dat ik dacht, ik ducht, ik <rhyme label="g" type="m">ducht</rhyme>,</l>
        <l id="s2:l12" met="4" type="+-">Buiten hoope van <rhyme label="e" type="m" corresp="#s2:l7">ontferm</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Felle <rhyme label="a" type="f">wreedhyd</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Kan 't anderzints niet <rhyme label="b" type="f">weeze</rhyme>?</l>
        <l id="s3:l3" met="2" type="-+">Zie dan myn <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s3:l4" met="5" type="-+">Tot doelstaan, buiten <rhyme label="b" type="f" corresp="#s3:l2">vreeze</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">U wreedheen <rhyme label="c" type="m" corresp="#s3:l3">tart</rhyme>.</l>
        <l id="s3:l6" met="2" type="-+">Ick tracht na 't <rhyme label="d" type="m">end</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van myn ont-roerd <rhyme label="e" type="m">gezucht</rhyme>.</l>
        <l id="s3:l8" met="2" type="-+">Kom, zend myn <rhyme label="f" type="f">klachten</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Na <rhyme label="f" type="f" corresp="#s3:l8">naare-nachten</rhyme>,</l>
        <l id="s3:l10" met="2" type="+-">Waar-men niet <rhyme label="f" type="f" corresp="#s3:l8">wachten</rhyme></l>
        <l id="s3:l11" met="5" type="-+">Dan endeloos elend, elend, <rhyme label="g" type="m">elend</rhyme>,</l>
        <l id="s3:l12" met="4" type="+-">En gestaâge <rhyme label="e" type="m" corresp="#s3:l7">ongenucht</rhyme>.</l>
      </lg>
    </lg>
  </text>
