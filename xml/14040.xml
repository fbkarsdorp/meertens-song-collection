  <author>Jan Jansz. Starter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Myn troost, myn <rhyme label="a" type="m">hart</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O Vroed-Vrouw van myn <rhyme label="a" type="m" corresp="#s1:l1">smart</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Helaes! ick <rhyme label="b" type="m">quijn</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">So dat ick <rhyme label="b" type="m" corresp="#s1:l3">schyn</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Veel meer te <rhyme label="b" type="m" corresp="#s1:l3">syn</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Een dood, als levendigh <rhyme label="c" type="m">gelyck</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Want ick teenemael <rhyme label="c" type="m" corresp="#s1:l6">be-swyck</rhyme></l>
        <l id="s1:l8" met="2" type="-+">In kracht en <rhyme label="d" type="m">macht</rhyme>.</l>
        <l id="s1:l9" met="6" type="-+">Och! oft de steenen spraken, tuygen konden <rhyme label="e" type="m">syn</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Van myn <rhyme label="f" type="m">standvastigheyd</rhyme>,</l>
        <l id="s1:l11" met="3" type="-+">En u <rhyme label="f" type="m" corresp="#s1:l10">hertneckigheyd</rhyme></l>
        <l id="s1:l12" met="2" type="-+">Weer tegens <rhyme label="e" type="m" corresp="#s1:l9">my</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">O schoon <rhyme label="a" type="m">Ionck-Vrouw</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Sy souden van myn <rhyme label="a" type="m" corresp="#s2:l1">trouw</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">De rechte <rhyme label="b" type="m">re'en</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Niet u <rhyme label="b" type="m" corresp="#s2:l3">alleen</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Maer yeder <rhyme label="b" type="m" corresp="#s2:l3">een</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Verhalen (vrees ick) al te <rhyme label="c" type="m">stout</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Waer door ghy licht bevlecken <rhyme label="c" type="m" corresp="#s2:l6">soudt</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">U eer, te <rhyme label="d" type="m">seer</rhyme>:</l>
        <l id="s2:l9" met="6" type="-+">Want geen ding, so een overschoone Maeght <rhyme label="e" type="m">mistaet</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">Als wreedheyd inde <rhyme label="f" type="m">min</rhyme>;</l>
        <l id="s2:l11" met="3" type="-+">Dus, o myn schoon <rhyme label="f" type="m" corresp="#s2:l10">Goddin</rhyme>!</l>
        <l id="s2:l12" met="2" type="-+">U strafheyd <rhyme label="e" type="m" corresp="#s2:l9">laet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">U roode <rhyme label="a" type="m">mond</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">U hayrtjes kruyf en <rhyme label="a" type="m" corresp="#s3:l1">blond</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">U Tandjes <rhyme label="b" type="m">blanck</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Al even <rhyme label="b" type="m" corresp="#s3:l3">lanck</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">U soet <rhyme label="b" type="m" corresp="#s3:l3">gesangh</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">U Ooghjes bruynder als een <rhyme label="c" type="m">git</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">U voor-hoofd effen, hoogh, en <rhyme label="c" type="m" corresp="#s3:l6">wit</rhyme>!</l>
        <l id="s3:l8" met="2" type="-+">U re'en, u <rhyme label="d" type="m">se'en</rhyme>,</l>
        <l id="s3:l9" met="6" type="-+">U Coninghlijcke wesen, en u soete <rhyme label="e" type="m">spraeck</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">U Halsjen, dat <rhyme label="f" type="m">cieraet</rhyme>!</l>
        <l id="s3:l11" met="3" type="-+">'t Welck 't Yvoor te boven <rhyme label="f" type="m" corresp="#s3:l10">gaet</rhyme>,</l>
        <l id="s3:l12" met="2" type="-+">Is mijn <rhyme label="e" type="m" corresp="#s3:l9">vermaeck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">U kloeck <rhyme label="a" type="m">beleyd</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">U brave <rhyme label="a" type="m" corresp="#s4:l1">deftigheyd</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">U ionghe <rhyme label="b" type="m">ieughd</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">U wyse <rhyme label="b" type="m" corresp="#s4:l3">deughd</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">U soete <rhyme label="b" type="m" corresp="#s4:l3">vreughd</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Heeft mijn gemoed soo seer <rhyme label="c" type="m">ontsteld</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Ia gevanghen en <rhyme label="c" type="m" corresp="#s4:l6">bekneld</rhyme>;</l>
        <l id="s4:l8" met="2" type="-+">Dat ick, die <rhyme label="d" type="m">strick</rhyme>,</l>
        <l id="s4:l9" met="6" type="-+">O schoone Son! niet weer ontkomen kan, ten <rhyme label="e" type="m">sy</rhyme></l>
        <l id="s4:l10" met="3" type="+-">U heuscheyd my <rhyme label="f" type="m">gerieft</rhyme>,</l>
        <l id="s4:l11" met="3" type="-+">En dat het u <rhyme label="f" type="m" corresp="#s4:l10">belieft</rhyme></l>
        <l id="s4:l12" met="2" type="-+">t'Ontbinden <rhyme label="e" type="m" corresp="#s4:l9">my</rhyme>.</l>
      </lg>
    </lg>
  </text>
