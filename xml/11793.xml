    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
      <tag standard-name="verhalend lied" translation="narrative song">verhalend lied</tag>
      <tag standard-name="bijbels historielied" translation="biblical history song">Bijbels historielied</tag>
    </tags>
    <melody>Iets moet ik u Laura vragen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VVYn wat hebdy groote <rhyme label="a" type="f">krachten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Over die u niet wil <rhyme label="a" type="f" corresp="#s1:l1">achten</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ghy berooft dat eel <rhyme label="b" type="m">verstandt</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Ghy maeckt Koningen tot <rhyme label="c" type="f">slaven</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Vrye, Rijcke, Vorsten, <rhyme label="c" type="f" corresp="#s1:l4">Graven</rhyme>.</l>
        <l id="s1:l6" met="4" type="+-">Datse vliegen van u <rhyme label="b" type="m" corresp="#s1:l3">handt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ghy maeckt sorgeloos en <rhyme label="a" type="f">luchtigh</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dat een yder dwaes en <rhyme label="a" type="f" corresp="#s2:l1">kluchtigh</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Niemandt aen sijn plicht <rhyme label="b" type="m">gedenckt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Watse doen dat wanens' <rhyme label="c" type="f">eerlijck</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Daer 't nochtans is valsch en <rhyme label="c" type="f" corresp="#s2:l4">deerlijck</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Als ghy volle kroesen <rhyme label="b" type="m" corresp="#s2:l3">schenckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Liefd' en vrientschap wort <rhyme label="a" type="f">vergeten</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Broederlijcke trouw <rhyme label="a" type="f" corresp="#s3:l1">versmeten</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Jae als sy in dolheydt <rhyme label="b" type="m">raest</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Treckt sy 't swaerdt uyt om <rhyme label="c" type="f">vernielen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Om te moorden d'arme <rhyme label="c" type="f" corresp="#s3:l4">zielen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En maeckt yder mensch <rhyme label="b" type="m" corresp="#s3:l3">verbaest</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Als men dan dus gantsch <rhyme label="a" type="f">bekroosen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Vol en dol sich gaet <rhyme label="a" type="f" corresp="#s4:l1">verpoosen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En van slaep is <rhyme label="b" type="m">overrast</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Weet men niet van sijn <rhyme label="c" type="f">bedrijven</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">En dus schent men ziel en <rhyme label="c" type="f" corresp="#s4:l4">lijven</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Als men is van Wijn <rhyme label="b" type="m" corresp="#s4:l3">vermast</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
