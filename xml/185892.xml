    <tags/>
    <melody>Wat is ons al vreugde gegeven</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SO gy wilt gelukkig <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En van yder een <rhyme label="a" type="f" corresp="#s1:l1">gepresen</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Neemt u treden wel <rhyme label="b" type="m">gewis</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Loopt niet Losjes by de <rhyme label="b" type="m" corresp="#s1:l3">gis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Al u saken wilt <rhyme label="a" type="f">bestieren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Stil en wel met goe <rhyme label="a" type="f" corresp="#s2:l1">manieren</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Soo weet niemand wat gy <rhyme label="b" type="m">jaegt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hier nog ginder by een <rhyme label="b" type="m" corresp="#s2:l3">Maegt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Jong gezellen wilt gy <rhyme label="a" type="f">minnen</rhyme>?</l>
        <l id="s3:l2" met="4" type="+-">Let hier op met rijpe <rhyme label="a" type="f" corresp="#s3:l1">zinnen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'t Is een lesje dat u <rhyme label="b" type="m">past</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Daer al vry wat is aen <rhyme label="b" type="m" corresp="#s3:l3">vast</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Peylt voorsigtig eerst de <rhyme label="a" type="f">gronden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dan daer na so maekt <rhyme label="a" type="f" corresp="#s4:l1">verbonden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'k seg u eerst voorsigtig <rhyme label="b" type="m">peylt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Of gy ook te hooge <rhyme label="b" type="m" corresp="#s4:l3">zeylt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Weet gy dan geen klip nog <rhyme label="a" type="f">zanden</rhyme>?</l>
        <l id="s5:l2" met="4" type="+-">Ligt zoo kan u Scheepje <rhyme label="a" type="f" corresp="#s5:l1">stranden</rhyme>?</l>
        <l id="s5:l3" met="4" type="+-">Ligt zoo raekt gy aen den <rhyme label="b" type="m">gront</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dan zoo word u hert <rhyme label="b" type="m" corresp="#s5:l3">doorwont</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Gaet gy al te hoog uit <rhyme label="a" type="f">vryen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Hoop en vrees dat is u <rhyme label="a" type="f" corresp="#s6:l1">lyen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ligt zoo loopt ge een blauwe <rhyme label="b" type="m">scheen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Dan zoo gaje druypen <rhyme label="b" type="m" corresp="#s6:l3">heen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dan zal yder een u <rhyme label="a" type="f">quellen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">En gedurig slaen en <rhyme label="a" type="f" corresp="#s7:l1">fellen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Vriend u Liefje was te <rhyme label="b" type="m">ryk</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Best te minnen zyn 's <rhyme label="b" type="m" corresp="#s7:l3">gelyk</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Al te hoog kan dikmael <rhyme label="a" type="f">feylen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Noodig is het eerst te <rhyme label="a" type="f" corresp="#s8:l1">peylen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">mind gy blind en <rhyme label="b" type="m">onbedagt</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Gy raekt midden in de <rhyme label="b" type="m" corresp="#s8:l3">gragt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Daerom Lieve gaet <rhyme label="a" type="f">voorzigtig</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Deze zaek is te <rhyme label="a" type="f" corresp="#s9:l1">gewigtig</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Wild gy blyven in u <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Zet u pols niet al te <rhyme label="b" type="m" corresp="#s9:l3">veer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
