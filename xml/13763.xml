  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOewel de son vry helder <rhyme label="a" type="m">schijnt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Nochtans sy voor mijn son <rhyme label="a" type="m" corresp="#s1:l1">verdwijnt</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Dat is Melind, wiens heldre <rhyme label="b" type="f">klaerheyt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Verlicht het duyster in haer <rhyme label="b" type="f" corresp="#s1:l3">naerheyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O schoone maeght uytmuntent <rhyme label="a" type="m">beelt</rhyme>!</l>
        <l id="s2:l2" met="4" type="-+">Die door u glans de herten <rhyme label="a" type="m" corresp="#s2:l1">streelt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Indien dat Paris u <rhyme label="b" type="f">aenschouwde</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ick weet sijn vonnis hem <rhyme label="b" type="f" corresp="#s2:l3">beroude</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">V wesen is van sulcken <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En zijt daer in ghelijck van <rhyme label="a" type="m" corresp="#s3:l1">macht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Apol, die door sijn gulde <rhyme label="b" type="f">straelen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">â€˜t Ghebloemte opent, daerse <rhyme label="b" type="f" corresp="#s3:l3">daelen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wanneerje uwe lonckjes <rhyme label="a" type="m">velt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Gheen borst soo ruw, of lijdt <rhyme label="a" type="m" corresp="#s4:l1">ghewelt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En moet hem als verwonnen <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Indien hy wil in ruste <rhyme label="b" type="f" corresp="#s4:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Mijn breyn ontbreynt, wanneer ick <rhyme label="a" type="m">wil</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">(Mijn pen die staet oock telkens <rhyme label="a" type="m" corresp="#s5:l1">stil</rhyme>,)</l>
        <l id="s5:l3" met="4" type="-+">V schoonheyt naer de kunst <rhyme label="b" type="f">afmalen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Waer in Apelles sou <rhyme label="b" type="f" corresp="#s5:l3">verdwalen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Indien hy soo stouthertich <rhyme label="a" type="m">waer</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat hy u beelt dorst trecken <rhyme label="a" type="m" corresp="#s6:l1">naer</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Sijn Venus souwer niet by <rhyme label="b" type="f">lijcken</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Maer voor u schijnsel moeten <rhyme label="b" type="f" corresp="#s6:l3">wijcken</rhyme>.</l>
      </lg>
    </lg>
  </text>
