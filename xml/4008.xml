    <melody>Maagdje wilt gij geestelijk wezen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O lacy Mijn hert leyt <rhyme label="a" type="f">gheuanghen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ende alte mael in sware <rhyme label="a" type="f" corresp="#s1:l1">banden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">O Iesu heere des claghe ic <rhyme label="b" type="m">di</rhyme></l>
        <l id="s1:l4" met="4" type="-+">O Iesu heere des claghe ic <rhyme label="b" type="m" corresp="#s1:l3">di</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Alst v belieft salt beter <rhyme label="b" type="m" corresp="#s1:l3">sijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O lieflijk lief wilt mijns <rhyme label="a" type="f">ontfermen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ghi troost die ghene die op v <rhyme label="a" type="f" corresp="#s2:l1">kermen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Wilt toch mijns ghenadich <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Wilt toch mijns ghenadich <rhyme label="b" type="m" corresp="#s2:l3">sijn</rhyme></l>
        <l id="s2:l5" met="4" type="-+">O Iesu heere des biddic <rhyme label="b" type="m" corresp="#s2:l3">di</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O heere mocht mi nu troost <rhyme label="a" type="f">ghebueren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ick moet met rechte liden en <rhyme label="a" type="f" corresp="#s3:l1">trueren</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Want ymmer so yst grote <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Want ymmer so yst grote <rhyme label="b" type="m" corresp="#s3:l3">pijn</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Een ionck hert gheuangen te <rhyme label="b" type="m" corresp="#s3:l3">sijn</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ic bid v lief nu wilt mi <rhyme label="a" type="f">halen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Bi v / wt desen allendigen <rhyme label="a" type="f" corresp="#s4:l1">dale</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Want mijn leuen is anders <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Want mijn leuen is anders <rhyme label="b" type="m" corresp="#s4:l3">niet</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Dan druck / liden / ende <rhyme label="b" type="m" corresp="#s4:l3">verdriet</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer mi dunct ic mach wel <rhyme label="a" type="f">swighen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Ic moet altijt gheuanghen <rhyme label="a" type="f" corresp="#s5:l1">bliuen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Ten baet mi niet al clage ic <rhyme label="b" type="m">vele</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Ten baet mi niet al clage ic <rhyme label="b" type="m" corresp="#s5:l3">vele</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Des moet mijn ionc herte <rhyme label="b" type="m" corresp="#s5:l3">quelen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ic mach mi wel tot liden <rhyme label="a" type="f">poghen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Want hoe God wil ic moet <rhyme label="a" type="f" corresp="#s6:l1">ghedoghen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Eest soet / eest suer / eest cort / oft <rhyme label="b" type="m">lanc</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Eest soet / eest suer / eest cort / oft <rhyme label="b" type="m" corresp="#s6:l3">lanc</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Ende dicwils tegen minen <rhyme label="b" type="m" corresp="#s6:l3">danc</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Ihesu ontfermt dy uwer <rhyme label="a" type="f">gheuanghen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Sij moeten quelen wt rechten <rhyme label="a" type="f" corresp="#s7:l1">verlanghen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Toont aen mi v <rhyme label="b" type="m">ontfermherticheyt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Toont aen mi v <rhyme label="b" type="m" corresp="#s7:l3">ontfermherticheyt</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Ende ooc v <rhyme label="b" type="m" corresp="#s7:l3">goedertierenheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
