  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HOort wat wonderbae-re <rhyme label="a" type="f">dingen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Hier geschie'n op Clemens <rhyme label="b" type="m">Feest</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Wien dat lof en glo-ry <rhyme label="a" type="f" corresp="#s1:l1">singen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Onse tongh en on-se <rhyme label="b" type="m" corresp="#s1:l2">geest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Is dien Clemens, die Sint <rhyme label="a" type="f">Pieters</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Leerkind eertijds is <rhyme label="b" type="m">geweest</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die der Marters <rhyme label="a" type="f" corresp="#s2:l1">bloed-vergieters</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Niet met allen heeft <rhyme label="b" type="m" corresp="#s2:l2">gevreest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Is dien Clemens, die van <rhyme label="a" type="f">seven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Vroome mans beschrijven <rhyme label="b" type="m">liet</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Het Martyry, dood, en <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">'t Ongemack, en 't swaer <rhyme label="b" type="m" corresp="#s3:l2">verdriet</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Van de Martyrs, die te <rhyme label="a" type="f">Romen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Eertijds waeren <rhyme label="b" type="m">omgebracht</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En ten hemel aen <rhyme label="a" type="f" corresp="#s4:l1">gekomen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Waren, na hun stervens <rhyme label="b" type="m" corresp="#s4:l2">nacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">'t Is dien Clemens, wien <rhyme label="a" type="f">gebannen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Heeft Trajaen verr' over <rhyme label="b" type="m">zee</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Waer Hy vondt veel Christen <rhyme label="a" type="f" corresp="#s5:l1">mannen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Overlast met druck, en <rhyme label="b" type="m" corresp="#s5:l2">wee</rhyme>;</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Die met marmer op te <rhyme label="a" type="f">graven</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Uyt 't geberchte, slaefden <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Als vermaledijde <rhyme label="a" type="f" corresp="#s6:l1">slaven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Om 't geloof van onsen <rhyme label="b" type="m" corresp="#s6:l2">Heer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'t Is dien alderheyl'ghsten <rhyme label="a" type="f">Vader</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Die door sijn gebedens <rhyme label="b" type="m">kracht</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Springen de'e een <rhyme label="a" type="f" corresp="#s7:l1">water-Ader</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Uyt de Steenrots <rhyme label="b" type="m" corresp="#s7:l2">onverwacht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Welck' vermaerde schoon <rhyme label="a" type="f">mirakel</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Meeningh Heyd'nen heeft <rhyme label="b" type="m">bekeert</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">'t Heeft belet hun vuyl <rhyme label="a" type="f" corresp="#s8:l1">gekakel</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">'t Heeft hun 't waer geloof <rhyme label="b" type="m" corresp="#s8:l2">geleert</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Maer als dit Trajanus <rhyme label="a" type="f">hoorden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Heeft Hy aen de Beul <rhyme label="b" type="m">belast</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Datmen Clemens sou <rhyme label="a" type="f" corresp="#s9:l1">vermoorden</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">End' een Ancker met een <rhyme label="b" type="m" corresp="#s9:l2">bast</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Aen sijn waerde hals sou <rhyme label="a" type="f">binden</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Ende worpen zoo in <rhyme label="b" type="m">zee</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Om dat Hem de Visch <rhyme label="a" type="f" corresp="#s10:l1">verslinden</rhyme></l>
        <l id="s10:l4" met="4" type="+-">En vernielen souden <rhyme label="b" type="m" corresp="#s10:l2">dree</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">'t Is geschiet; Hy is <rhyme label="a" type="f">verdroncken</rhyme></l>
        <l id="s11:l2" met="4" type="+-">In den woesten <rhyme label="b" type="m">Oceaen</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Maer Hem is een graf <rhyme label="a" type="f" corresp="#s11:l1">geschoncken</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Tegens meeningh van <rhyme label="b" type="m" corresp="#s11:l2">Trajaen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Want de Eng'len Hem <rhyme label="a" type="f">besorghden</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Een Capell' van <rhyme label="b" type="m">Marmer-steen</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Wien dus wreed de Heyd'nen <rhyme label="a" type="f" corresp="#s12:l1">worghden</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Tegens alle recht en <rhyme label="b" type="m" corresp="#s12:l2">re'en</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">En op dat de plaets sou <rhyme label="a" type="f">blijcken</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Van dit wonderbaere <rhyme label="b" type="m">graf</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Soo liet God het water <rhyme label="a" type="f" corresp="#s13:l1">wijcken</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">En drie mylen loopen <rhyme label="b" type="m" corresp="#s13:l2">af</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Waer nae toe het volck gingh <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">En bevonden 't soo te <rhyme label="b" type="m">zijn</rhyme>;</l>
        <l id="s14:l3" met="4" type="+-">Maer de ziel (uyt 't lijf <rhyme label="a" type="f" corresp="#s14:l1">geslopen</rhyme>)</l>
        <l id="s14:l4" met="4" type="+-">Was in 's hemels <rhyme label="b" type="m" corresp="#s14:l2">Magezijn</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Wie sal dan dien Man niet <rhyme label="a" type="f">vieren</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Die soo veel geleden <rhyme label="b" type="m">heeft</rhyme>?</l>
        <l id="s15:l3" met="4" type="+-">Wie sal sijn gebe'en niet <rhyme label="a" type="f" corresp="#s15:l1">stieren</rhyme></l>
        <l id="s15:l4" met="4" type="+-">Naer den hemel, waer Hy <rhyme label="b" type="m" corresp="#s15:l2">leeft</rhyme>?</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Sinte Clemens zijt <rhyme label="a" type="f">gedachtich</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Onser, op dit traenen <rhyme label="b" type="m">dal</rhyme>.</l>
        <l id="s16:l3" met="4" type="+-">Ach! Sint Clemens bidt toch <rhyme label="a" type="f" corresp="#s16:l1">krachtich</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Brenght ons binnen 's hemels <rhyme label="b" type="m" corresp="#s16:l2">wall'</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
