    <melody>Adieu nymphe du bois</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SChaemt u verdrai-de <rhyme label="a" type="m">Tolk</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Den Prins van 't Chri-sten <rhyme label="a" type="m" corresp="#s1:l1">volk</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Een Antechrist te <rhyme label="b" type="f">nommen</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">De ongefeylde <rhyme label="c" type="m">Roots</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En ‘twoord des zoone <rhyme label="c" type="m" corresp="#s1:l4">Goods</rhyme>//</l>
        <l id="s1:l6" met="3" type="-+">Vw’ spijtigheyd <rhyme label="b" type="f" corresp="#s1:l3">verdommen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">’t Is Petrus <rhyme label="a" type="m">Successeur</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die Christus d’eerste <rhyme label="a" type="m" corresp="#s2:l1">keur</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Gaf van zijn ganschen <rhyme label="b" type="f">Tempel</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Zijn zetel staet voor <rhyme label="c" type="m">al</rhyme></l>
        <l id="s2:l5" met="3" type="-+">De Nazareense <rhyme label="c" type="m" corresp="#s2:l4">stal</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Tot lering end’ <rhyme label="b" type="f" corresp="#s2:l3">exempel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Heer heeft hem <rhyme label="a" type="m">gesteld</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Een harder van zijn <rhyme label="a" type="m" corresp="#s3:l1">veld</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Een grond-vest zijnder <rhyme label="b" type="f">Kerken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Gestijft met zijn <rhyme label="c" type="m">gebed</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Om met een vaste <rhyme label="c" type="m" corresp="#s3:l4">wet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Zijn broeders te <rhyme label="b" type="f" corresp="#s3:l3">versterken</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dit dee d’Apostel <rhyme label="a" type="m">Goods</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Tot dat hem d’uir des <rhyme label="a" type="m" corresp="#s4:l1">doods</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Te trekken kwam van <rhyme label="b" type="f">d’aerde</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">En dat in d’ope <rhyme label="c" type="m">stee</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Den Hemel geven <rhyme label="c" type="m" corresp="#s4:l4">dee</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Zijn volgers d’eige <rhyme label="b" type="f" corresp="#s4:l3">waerde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">‘Kzeg d’eige waerde, <rhyme label="a" type="m">Iae’k</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">En twijffelje aende <rhyme label="a" type="m" corresp="#s5:l1">zaek</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Zoo’n hebdy maer te <rhyme label="b" type="f">zouken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In ’t wel bewaerd <rhyme label="c" type="m">papier</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Wat d’oude Vaders <rhyme label="c" type="m" corresp="#s5:l4">hier</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Van tuygen met haer <rhyme label="b" type="f" corresp="#s5:l3">bouken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Leest Basilium, <rhyme label="a" type="m">leest</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die voor hem is <rhyme label="a" type="m" corresp="#s6:l1">geweest</rhyme></l>
        <l id="s6:l3" met="3" type="-+">In Vrankrijk aende <rhyme label="b" type="f">Rhone</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ze zullen u ’t <rhyme label="c" type="m">gelijk</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Des Roomsche stoel met <rhyme label="c" type="m" corresp="#s6:l4">blijk</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Van clare reden <rhyme label="b" type="f" corresp="#s6:l3">toonen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer boven al zoo’n <rhyme label="a" type="m">laet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Den heiligen <rhyme label="a" type="m" corresp="#s7:l1">Dalmaet</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Hier over niet te <rhyme label="b" type="f">lezen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En ’t geen beneffens <rhyme label="c" type="m">hem</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Schier met gelijkke <rhyme label="c" type="m" corresp="#s7:l4">Stem</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Bernardus heeft <rhyme label="b" type="f" corresp="#s7:l3">geprezen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">’t Was Dammaes end’ <rhyme label="a" type="m">Eugeen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die zyluy een voor <rhyme label="a" type="m" corresp="#s8:l1">een</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Haer tijtelen <rhyme label="b" type="f">aentelden</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Gaet heen doorleestze <rhyme label="c" type="m">vry</rhyme></l>
        <l id="s8:l5" met="3" type="-+">En laet de <rhyme label="c" type="m" corresp="#s8:l4">ketterij</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Haer schamen meer te <rhyme label="b" type="f" corresp="#s8:l3">schelden</rhyme>.</l>
      </lg>
    </lg>
  </text>
