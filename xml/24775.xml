    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">So wie bi nachte gherne <rhyme label="a" type="m">vliecht</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hi slacht den <rhyme label="b" type="f">huwerhane</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Die hem sdaeghs uten oghen <rhyme label="c" type="m">doet</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Ruste ende paeis hem dickent <rhyme label="a" type="m" corresp="#s1:l1">liecht</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van vele bi nachte te <rhyme label="b" type="f" corresp="#s1:l2">gane</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">So wie bi nachte gherne <rhyme label="a" type="m">vliecht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hi slacht den <rhyme label="b" type="f">huwerane</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Sijn zanc zijn roup dats waen <rhyme label="c" type="m">bedrieght</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Dies scuwet hi zonne ende <rhyme label="a" type="m" corresp="#s2:l1">mane</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Lanteerne ende keerze ware hem <rhyme label="b" type="f" corresp="#s2:l2">goet</rhyme></l>
      </lg>
    </lg>
