  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="1" type="-+">NV <rhyme label="a" type="m">Heer</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">Laet gaen, ist u <rhyme label="a" type="m" corresp="#s1:l1">begeer</rhyme></l>
        <l id="s1:l3" met="2" type="-+">V knecht in <rhyme label="b" type="f">vreden</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Dat hy mach <rhyme label="b" type="f" corresp="#s1:l3">treden</rhyme></l>
        <l id="s1:l5" met="5" type="-+">Ter plaetse na u woordt, by <rhyme label="b" type="f" corresp="#s1:l3">d'overleeden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Om te boodtschappen <rhyme label="c" type="m">haer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hoe den verlosser <rhyme label="c" type="m" corresp="#s1:l6">waer</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Ghedaelt <rhyme label="b" type="f" corresp="#s1:l3">beneden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="1" type="-+">Ick <rhyme label="a" type="m">sie</rhyme></l>
        <l id="s2:l2" met="3" type="-+">V Salighmaker, <rhyme label="a" type="m" corresp="#s2:l1">die</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Haer langh belooft // <rhyme label="b" type="f">is</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Dat hy het hooft // <rhyme label="b" type="f" corresp="#s2:l3">is</rhyme></l>
        <l id="s2:l5" met="5" type="-+">Die haer weer halen sal, dat haer ontrooft // <rhyme label="b" type="f" corresp="#s2:l3">is</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ghelijcken als een <rhyme label="c" type="m">Reus</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Wiens moet soo <rhyme label="c" type="m" corresp="#s2:l6">furieus</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Noyt afgheslooft // <rhyme label="b" type="f" corresp="#s2:l3">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="1" type="-+">Den <rhyme label="a" type="m">welck</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ghy oock bereydt hebt, <rhyme label="a" type="m" corresp="#s3:l1">elck</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Een int <rhyme label="b" type="f">bysonder</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Voor ons die <rhyme label="b" type="f" corresp="#s3:l3">onder</rhyme></l>
        <l id="s3:l5" met="5" type="-+">Den Hemel swerven, in het aerdts <rhyme label="b" type="f" corresp="#s3:l3">ghedonder</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Daer Satan ons in <rhyme label="c" type="m">hout</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Maer desen sal hem <rhyme label="c" type="m" corresp="#s3:l6">stout</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Verslaen met <rhyme label="b" type="f" corresp="#s3:l3">wonder</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="1" type="-+">Hy <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Oock voor de Heyd'nen <rhyme label="a" type="m" corresp="#s4:l1">al</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Verlichtingh <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Dat sy de <rhyme label="b" type="f" corresp="#s4:l3">pesen</rhyme></l>
        <l id="s4:l5" met="5" type="-+">Van haer Afgoden niet meer sullen <rhyme label="b" type="f" corresp="#s4:l3">vreesen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En in't huys <rhyme label="c" type="m">Israel</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Soo salmen <rhyme label="c" type="m" corresp="#s4:l6">evenwel</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Sijn glori <rhyme label="b" type="f" corresp="#s4:l3">lesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
