  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">KOst Myn-heer Pastoor <rhyme label="a" type="f">ombinden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Soo hy 't knoopen binden <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Hy wirdt stracks een schat-ryck <rhyme label="b" type="m" corresp="#s1:l2">Man</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Want hy sou goey nering <rhyme label="a" type="f" corresp="#s1:l1">vinden</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Van die hy eens heeft <rhyme label="c" type="m">getrouwt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Wiëns trouw hun nu <rhyme label="c" type="m" corresp="#s1:l5">berouwt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Waer 't dat alle Houw <rhyme label="a" type="f">elycken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Hadden een <rhyme label="b" type="m">Novitiaet</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Soo het in de Klooster <rhyme label="b" type="m" corresp="#s2:l2">gaet</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hoe veel soudender <rhyme label="a" type="f" corresp="#s2:l1">af-wycken</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Van hun aen-ghenomen <rhyme label="c" type="m">min</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En verlaten hun <rhyme label="c" type="m" corresp="#s2:l5">Vrindin</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wilt eens op de netten <rhyme label="a" type="f">kyken</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En hoe dat het met den <rhyme label="b" type="m">Visch</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En het Net gheleghen <rhyme label="b" type="m" corresp="#s3:l2">is</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Want het gaet met <rhyme label="a" type="f" corresp="#s3:l1">d'Houwelyckẽ</rhyme></l>
        <l id="s3:l5" met="4" type="+-">En den Houwelycken <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Soo het met de Netten <rhyme label="c" type="m" corresp="#s3:l5">gaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Die uyt 't Net is wilt daer in <rhyme label="a" type="f">zyn</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Die daer in is wilt daer <rhyme label="b" type="m">uyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En verlaten syne <rhyme label="b" type="m" corresp="#s4:l2">Bruydt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Maer de Bruyt blyft syn Basin <rhyme label="a" type="f" corresp="#s4:l1">zyn</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Oft hy wilt oft niet en <rhyme label="c" type="m">wilt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Hy is met het Net <rhyme label="c" type="m" corresp="#s4:l5">ghebrilt</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als Ian socht verlost te <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Van een quaey en boose <rhyme label="b" type="m">Griet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Doen stirf Ian en Grietjen <rhyme label="b" type="m" corresp="#s5:l2">niet</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ian wirt self tot 't graf <rhyme label="a" type="f" corresp="#s5:l1">verwesen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Ian die kreegh een <rhyme label="c" type="m">Apostil</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Teghen wensch, en teghen <rhyme label="c" type="m" corresp="#s5:l5">wil</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Oock de soetste Maeght van <rhyme label="a" type="f">allen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Die in d'oog scheen reyn en <rhyme label="b" type="m">wit</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Heeft al plecken in 't <rhyme label="b" type="m" corresp="#s6:l2">besit</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Niet en sal in als <rhyme label="a" type="f" corresp="#s6:l1">bevallen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Noyt soo goeden <rhyme label="c" type="m">Houwelyck</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Oft 't heeft iet <rhyme label="c" type="m" corresp="#s6:l5">berouwelyck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Die naer aerdtsche saken <rhyme label="a" type="f">wenschen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Vinden in die aertsche <rhyme label="b" type="m">saeck</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Grooter wenschen als <rhyme label="b" type="m" corresp="#s7:l2">vermaeck</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Alle de ghehouwde <rhyme label="a" type="f" corresp="#s7:l1">menschen</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Vinden hier in hunnen <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">'t Suer by 't soet, en 't goet by 't <rhyme label="c" type="m" corresp="#s7:l5">quaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
