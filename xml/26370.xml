    <melody>Met een droeve zang is het dat ik u klagen moet</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs Esdra, men noch <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wel hooghe loven <rhyme label="b" type="m">mach</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die vroom zijn door <rhyme label="a" type="f" corresp="#s1:l1">ghestreden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Soo men te Ghendt oock <rhyme label="b" type="m" corresp="#s1:l2">sach</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">November den twaelfsten <rhyme label="b" type="m" corresp="#s1:l2">dach</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Doen men te schrijven <rhyme label="b" type="m" corresp="#s1:l2">plach</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Vierentsestich, doen <rhyme label="a" type="f" corresp="#s1:l1">leden</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Twee Vroukens met goet <rhyme label="b" type="m" corresp="#s1:l2">verdrach</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">D'een een Weduwe <rhyme label="a" type="f">eersame</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hiet Pierrijntgen <rhyme label="b" type="m">Maelbout</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Martijntgen soo van <rhyme label="a" type="f" corresp="#s2:l1">name</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Was een Dochter niet <rhyme label="b" type="m" corresp="#s2:l2">ont</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sy hebben <rhyme label="b" type="m" corresp="#s2:l2">menichfout</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Bewesen lauw' noch <rhyme label="b" type="m" corresp="#s2:l2">cout</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Haer gheloove <rhyme label="a" type="f" corresp="#s2:l1">bequame</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ghelijck in't vier het <rhyme label="b" type="m" corresp="#s2:l2">gout</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dees Susters van <rhyme label="a" type="f">gheboorte</rhyme></l>
        <l id="s3:l2" met="3" type="-+">End' wedergheboorte <rhyme label="b" type="m">me</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Schaepkens van Christus <rhyme label="a" type="f" corresp="#s3:l1">soorte</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghevanghen te Ghendt in't <rhyme label="b" type="m" corresp="#s3:l2">ste</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Jesabels hoop haer <rhyme label="b" type="m" corresp="#s3:l2">de</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Soo door dreyghen als <rhyme label="b" type="m" corresp="#s3:l2">be</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Met listighe <rhyme label="a" type="f" corresp="#s3:l1">becoorte</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Veel strijdt en swaer <rhyme label="b" type="m" corresp="#s3:l2">onvre</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Haer gheloove <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Beleden sy <rhyme label="b" type="m">openbaer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Van Christum, en om <rhyme label="a" type="f" corresp="#s4:l1">desen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Op't stadt-huys ter <rhyme label="b" type="m" corresp="#s4:l2">vierschaer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Seer beloghen, men <rhyme label="b" type="m" corresp="#s4:l2">haer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Heeft ten laetsten <rhyme label="b" type="m" corresp="#s4:l2">aldaer</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Ter doot des zweerts <rhyme label="a" type="f" corresp="#s4:l1">verwesen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Om t'ghetuyghnis Christi <rhyme label="b" type="m" corresp="#s4:l2">claer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dees Vroukens in die <rhyme label="a" type="f">ure</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Vrolijck met sanghe <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Loefden den Heere <rhyme label="a" type="f" corresp="#s5:l1">pure</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Martijntgen die sprack, doet <rhyme label="b" type="m" corresp="#s5:l2">boet</rhyme></l>
        <l id="s5:l5" met="3" type="-+">O Menschen om u <rhyme label="b" type="m" corresp="#s5:l2">behoet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ghelooft t'Euangely <rhyme label="b" type="m" corresp="#s5:l2">goet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Ondersoeckt die <rhyme label="a" type="f" corresp="#s5:l1">Schriftuere</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Sy betuycht van Christum <rhyme label="b" type="m" corresp="#s5:l2">vroet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Alst nu was na den <rhyme label="a" type="f">noene</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ende den tijdt <rhyme label="b" type="m">present</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dees Vroukens te <rhyme label="a" type="f" corresp="#s6:l1">verdoene</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">In s'Graven steen <rhyme label="b" type="m" corresp="#s6:l2">bekent</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Daer was dat out <rhyme label="b" type="m" corresp="#s6:l2">Serpent</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Met zijn gheleerd' <rhyme label="b" type="m" corresp="#s6:l2">ontrent</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Maer dees wijnrancxkens <rhyme label="a" type="f" corresp="#s6:l1">groene</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Bleven in den wijnstock <rhyme label="b" type="m" corresp="#s6:l2">jent</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Martijntgen met <rhyme label="a" type="f">verblijden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Danckte met goet <rhyme label="b" type="m">opstel</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Den Vader, soo te <rhyme label="a" type="f" corresp="#s7:l1">lijden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Om zijnen Naem <rhyme label="b" type="m" corresp="#s7:l2">ghequel</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Beval hem den Gheest <rhyme label="b" type="m" corresp="#s7:l2">snel</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Den Beul deed' zijn werck <rhyme label="b" type="m" corresp="#s7:l2">fel</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Den Paep sprack doen ten <rhyme label="a" type="f" corresp="#s7:l1">tijden</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Arm schaep, ick seyt u <rhyme label="b" type="m" corresp="#s7:l2">wel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Martijntgen soo <rhyme label="a" type="f">verscheyde</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Doen quam Pierrijntgen, <rhyme label="b" type="m">siet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Den Paep die haer seer <rhyme label="a" type="f" corresp="#s8:l1">vleyde</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Haer aen zijnen deessem <rhyme label="b" type="m" corresp="#s8:l2">riedt</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Ghy valsch Prophete <rhyme label="b" type="m" corresp="#s8:l2">vliedt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Sprack sy tot zijn <rhyme label="b" type="m" corresp="#s8:l2">verdriet</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Hy wierp zijn handen <rhyme label="a" type="f" corresp="#s8:l1">beyde</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Van hem, ten behaechd' hem <rhyme label="b" type="m" corresp="#s8:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Maer t'Schaep ginck sonder <rhyme label="a" type="f">dolen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Die voetstappen <rhyme label="b" type="m">Christi</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">End' in doots noot <rhyme label="a" type="f" corresp="#s9:l1">bevolen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Den Vader den Gheest heeft <rhyme label="b" type="m" corresp="#s9:l2">sy</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Bedroeft, hier zijnde <rhyme label="b" type="m" corresp="#s9:l2">by</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Ghevoeld' ick vreucht in <rhyme label="b" type="m" corresp="#s9:l2">my</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Om dat sy <rhyme label="a" type="f" corresp="#s9:l1">onghestolen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">T'gheloove behielden <rhyme label="b" type="m" corresp="#s9:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Een sterven, en <rhyme label="a" type="f">bederven</rhyme></l>
        <l id="s10:l2" met="3" type="-+">In s'weerelts ooghen <rhyme label="b" type="m">mal</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Was dit, maer sy <rhyme label="a" type="f" corresp="#s10:l1">beerven</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Ruste vry van <rhyme label="b" type="m" corresp="#s10:l2">misval</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Met der heylighen <rhyme label="b" type="m" corresp="#s10:l2">ghetal</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Die Godt noch leven <rhyme label="b" type="m" corresp="#s10:l2">al</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Ende sullen vreucht <rhyme label="a" type="f" corresp="#s10:l1">verwerven</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Die niet vergaen en <rhyme label="b" type="m" corresp="#s10:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Menighe vroom <rhyme label="a" type="f">oorconde</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Is nu voor ons int <rhyme label="b" type="m">pleyn</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dus Broeders vry van <rhyme label="a" type="f" corresp="#s11:l1">zonde</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Laet ons oock <rhyme label="b" type="m" corresp="#s11:l2">alghemeyn</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Wacker om strijden <rhyme label="b" type="m" corresp="#s11:l2">reyn</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Ons Prince ende <rhyme label="b" type="m" corresp="#s11:l2">Capiteyn</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Nae volghen t'allen <rhyme label="a" type="f" corresp="#s11:l1">stonde</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">En mercken op hem <rhyme label="b" type="m" corresp="#s11:l2">alleyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
