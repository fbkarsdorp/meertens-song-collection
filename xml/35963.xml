    <melody>Corydon zucht nacht en dag</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GElyck een dorstigh hert, dat <rhyme label="a" type="m">vlucht</rhyme></l>
        <l id="s1:l2" met="4" type="-+">De Jagers, naer de beken <rhyme label="a" type="m" corresp="#s1:l1">sucht</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Soo jaeght myn hert, myn <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En sucht, en heyght, en <rhyme label="c" type="m">dorst</rhyme></l>
        <l id="s1:l5" met="3" type="-+">En sucht, en heyght, en <rhyme label="c" type="m" corresp="#s1:l4">dorst</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Naer mynen Koninck mynen <rhyme label="c" type="m" corresp="#s1:l4">Vorst</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Wie sal my dïen <rhyme label="b" type="f" corresp="#s1:l3">geven</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick loop gedurigh in, en <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En soecke met de Reyne <rhyme label="a" type="m" corresp="#s2:l1">Bruyt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">By alle <rhyme label="b" type="f">Creaturen</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Die myn ziele <rhyme label="c" type="m">bemindt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Die myn ziele <rhyme label="c" type="m" corresp="#s2:l4">bemindt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Geluckigh is zy, die hem <rhyme label="c" type="m" corresp="#s2:l4">vindt</rhyme>!</l>
        <l id="s2:l7" met="3" type="-+">Segh Schepsels, segh <rhyme label="b" type="f" corresp="#s2:l3">Geburen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Waer is de Schepper toch <rhyme label="a" type="m">gegaen</rhyme>?</l>
        <l id="s3:l2" met="4" type="-+">In Hemelrijck? wie kan daer <rhyme label="a" type="m" corresp="#s3:l1">aen</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">De Lust-hof is <rhyme label="b" type="f">gesloten</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">In d'Arck en woondt hy <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">In d'Arck en woondt hy <rhyme label="c" type="m" corresp="#s3:l4">niet</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Den Tempel is, gelijckmen <rhyme label="c" type="m" corresp="#s3:l4">siet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Met nevel <rhyme label="b" type="f" corresp="#s3:l3">overgoten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O! dat hy uyt den Hemel <rhyme label="a" type="m">viel</rhyme>!</l>
        <l id="s4:l2" met="4" type="-+">En quam gevallen in myn <rhyme label="a" type="m" corresp="#s4:l1">ziel</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Die myn gemoet doet <rhyme label="b" type="f">blaken</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">O! dat daer open <rhyme label="c" type="m">gonck</rhyme></l>
        <l id="s4:l5" met="3" type="-+">O! dat daer open <rhyme label="c" type="m" corresp="#s4:l4">gonck</rhyme></l>
        <l id="s4:l6" met="4" type="-+">De Leli-blom uyt <rhyme label="c" type="m" corresp="#s4:l4">Jesse-stronck</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Die my saligh kan <rhyme label="b" type="f" corresp="#s4:l3">maken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer waerom ist, dat ick soo <rhyme label="a" type="m">treur</rhyme>?</l>
        <l id="s5:l2" met="4" type="-+">En loop van achter ende <rhyme label="a" type="m" corresp="#s5:l1">veur</rhyme>?</l>
        <l id="s5:l3" met="3" type="-+">Messias is <rhyme label="b" type="f">geboren</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Myn ziele dese <rhyme label="c" type="m">keer</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Myn ziele dese <rhyme label="c" type="m" corresp="#s5:l4">keer</rhyme></l>
        <l id="s5:l6" met="4" type="-+">En hoeven wy noch Jacobs <rhyme label="c" type="m" corresp="#s5:l4">Leer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Noch Babels hooge <rhyme label="b" type="f" corresp="#s5:l3">Toren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Een ander tracht om hoogh; <rhyme label="a" type="m">gewis</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Den hemel is, waer Christus <rhyme label="a" type="m" corresp="#s6:l1">is</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">'k Soeck meer Godt hier te <rhyme label="b" type="f">loven</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ontrent den Os, de <rhyme label="c" type="m">Geyt</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Ontrent den Os, de <rhyme label="c" type="m" corresp="#s6:l4">Geyt</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Daer mynen Salighmaker <rhyme label="c" type="m" corresp="#s6:l4">leyt</rhyme>;</l>
        <l id="s6:l7" met="3" type="-+">Dan sonder hem daer <rhyme label="b" type="f" corresp="#s6:l3">boven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy ruste in zyns Vaders <rhyme label="a" type="m">schoot</rhyme>;</l>
        <l id="s7:l2" met="4" type="-+">Maer soo lief hadt hy onse <rhyme label="a" type="m" corresp="#s7:l1">noot</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Te weten al zyn <rhyme label="b" type="f">wenschen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Dat is van het <rhyme label="c" type="m">begin</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Dat is van het <rhyme label="c" type="m" corresp="#s7:l4">begin</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Te woonen hier uyt soete <rhyme label="c" type="m" corresp="#s7:l4">min</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Te spelen met de <rhyme label="b" type="f" corresp="#s7:l3">menschen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Loop Joden naer <rhyme label="a" type="m">Jerusalem</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ick blyve nu te <rhyme label="a" type="m" corresp="#s8:l1">Bethleëm</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">O! Wesen van myn <rhyme label="b" type="f">Wesen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Geef my, geef my, dat <rhyme label="c" type="m">ick</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Geef my, geef my, dat <rhyme label="c" type="m" corresp="#s8:l4">ick</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Hier mach van desen <rhyme label="c" type="m" corresp="#s8:l4">oogenblick</rhyme></l>
        <l id="s8:l7" met="3" type="-+">In u verslonden <rhyme label="b" type="f" corresp="#s8:l3">wesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
