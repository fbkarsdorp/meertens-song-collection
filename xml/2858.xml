    <melody>O roosje rood o parel jent</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Oe roesie roet oe paerele <rhyme label="a" type="m">Ient</rhyme></l>
        <l id="s1:l2" met="4" type="-+">mijn lief mijndoet daer Ick om lijde <rhyme label="a" type="m" corresp="#s1:l1">torment</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Oe schoen goddinne Ick blijf <rhyme label="a" type="m" corresp="#s1:l1">geschent</rhyme></l>
        <l id="s1:l4" met="4" type="-+">want mijn lijden Is sonder <rhyme label="a" type="m" corresp="#s1:l1">ent</rhyme>.</l>
        <l id="s1:l5" met="5" type="-+">nacht ende dach die Ick geklach <rhyme label="b" type="m">voerwaer</rhyme>.</l>
        <l id="s1:l6" met="5" type="-+">Om dat Ick moet scheide van u lief <rhyme label="b" type="m" corresp="#s1:l5">eerbaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Moet Ick nu scheiden Ist nu den <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">sonder voerbeyden ofte <rhyme label="a" type="m" corresp="#s2:l1">respijt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">mijn hert van droefheit, Int lichaem <rhyme label="a" type="m" corresp="#s2:l1">split</rhyme></l>
        <l id="s2:l4" met="4" type="-+">mijn oegen Ick aen sticken <rhyme label="a" type="m" corresp="#s2:l1">krijt</rhyme></l>
        <l id="s2:l5" met="5" type="-+">Ick sal getrou oe schoen kersou u <rhyme label="b" type="m">sin</rhyme></l>
        <l id="s2:l6" met="5" type="-+">al valt het scheiden alsoe groete <rhyme label="b" type="m" corresp="#s2:l5">pijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Oe wreede dach ongeluckiger <rhyme label="a" type="m">uer</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die Ick oiet sach, die valt mijn alsoe <rhyme label="a" type="m" corresp="#s3:l1">suer</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Duenck mijn te weesen tegen den <rhyme label="a" type="m" corresp="#s3:l1">natuer</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dat Ick nu oe maechieken <rhyme label="a" type="m" corresp="#s3:l1">puer</rhyme></l>
        <l id="s3:l5" met="5" type="-+">moet sechgen haedieu want op een nieu van <rhyme label="b" type="m">rou</rhyme></l>
        <l id="s3:l6" met="5" type="-+">Oe bittere Doet waer nae soe beit gij <rhyme label="b" type="m" corresp="#s3:l5">nu</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Prinsesse schoene diet wel <rhyme label="a" type="m">voorsint</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Gij spandt de krone diet wel <rhyme label="a" type="m" corresp="#s4:l1">voersint</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Want Ick en ben niet gelick de <rhyme label="a" type="m" corresp="#s4:l1">wint</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Gij staet altoes In mijn hert <rhyme label="a" type="m" corresp="#s4:l1">geprent</rhyme></l>
        <l id="s4:l5" met="5" type="-+">Ick sal getrou oe schoen kersou u <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s4:l6" met="5" type="-+">al valt mijn heit scheiden alsoe groete <rhyme label="b" type="m" corresp="#s4:l5">pijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
