    <melody>Christe qui lux es et dies</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Christe die dat licht zijt en den <rhyme label="a" type="m">dach</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Voor wien verborghen niet syn <rhyme label="a" type="m" corresp="#s1:l1">mach</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy zijt des Vaders schijnsel <rhyme label="b" type="m">snel</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Leert ons den wech der waerheyt <rhyme label="b" type="m" corresp="#s1:l3">wel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy bidden u Goddelijcke <rhyme label="a" type="m">cracht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Bewaert ons Heere desen <rhyme label="a" type="m" corresp="#s2:l1">nacht</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Bewaert ons van den quaden <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Godt Vader der ghenaden <rhyme label="b" type="m" corresp="#s2:l3">fier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Verdrijft den swaren slaep Heer <rhyme label="a" type="m">Christ</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat ons niet deert des vyants <rhyme label="a" type="m" corresp="#s3:l1">list</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Castijt dat vleesch op dat reyn <rhyme label="b" type="m">sy</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">So syn wy veeler sorghen <rhyme label="b" type="m" corresp="#s3:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als ons die ooghen slapen <rhyme label="a" type="m">zaen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die herten laet syn <rhyme label="a" type="m" corresp="#s4:l1">opghedaen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Beurijt ons Godes <rhyme label="b" type="m">Rechterhant</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En quijt ons wt der sonden <rhyme label="b" type="m" corresp="#s4:l3">bant</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Beschermer dijner <rhyme label="a" type="m">Christenheyt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dijn hulp altijt voor ons <rhyme label="a" type="m" corresp="#s5:l1">bereyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Helpt ons o God wt allen <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Door dyne heylighe wonden <rhyme label="b" type="m" corresp="#s5:l3">root</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghedenckt Heere der swarer <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Daer in dat lijf gheuanghen <rhyme label="a" type="m" corresp="#s6:l1">lijt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Verlost die Siele Ihesu <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die ghy hebt ghecocht met u reyn <rhyme label="b" type="m" corresp="#s6:l3">bloet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">God Vader sy lof, eere, en <rhyme label="a" type="m">prijs</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Prijs sy synen Soone <rhyme label="a" type="m" corresp="#s7:l1">wijs</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Prijs sy den heylighen Gheest <rhyme label="b" type="m">gheseyt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Van nu aen tot in der <rhyme label="b" type="m" corresp="#s7:l3">eeuwicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
