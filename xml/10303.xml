    <melody>Het vinnige stralen van de zon</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wel Harderin voor wie gaet <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dit Kransje nu <rhyme label="b" type="f">bereyen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dit Kransje Herder is voor <rhyme label="a" type="m" corresp="#s1:l1">my</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Voor u en voor ons <rhyme label="b" type="f" corresp="#s1:l2">beyen</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Ey laet dat staen // en laet ons <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Te samen met <rhyme label="b" type="f" corresp="#s1:l2">vermeyen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Neen Harder dat staet my niet <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Sit hier wat by my <rhyme label="b" type="f">neder</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Ay laet ons liever weyden <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Het is sulck lieflijck <rhyme label="b" type="f" corresp="#s2:l2">weder</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Mijn jonge Vee // mach qualick <rhyme label="c" type="m">mee</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sy zijn noch jongh en <rhyme label="b" type="f" corresp="#s2:l2">teder</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wel als ghy dan de rust <rhyme label="a" type="m">bemint</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Laet ick dan bloempjes <rhyme label="b" type="f">plucken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat ghyse om u kransje <rhyme label="a" type="m" corresp="#s3:l1">wint</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Maer treckt doch niet aen <rhyme label="b" type="f" corresp="#s3:l2">stucken</rhyme></l>
        <l id="s3:l5" met="4" type="-+">De teere steel // dan sal ick 't <rhyme label="c" type="m">heel</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Gaen om u Voorhooft <rhyme label="b" type="f" corresp="#s3:l2">drucken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Seght my wat Bloempjes <rhyme label="a" type="m">Harderin</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Belieft ghy te <rhyme label="b" type="f">gebruycken</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Pluckt ghy slechts bloempjes naer u <rhyme label="a" type="m" corresp="#s4:l1">sin</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als sy maer lieflijck <rhyme label="b" type="f" corresp="#s4:l2">ruycken</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">'t Is voor u toch // plucktse die <rhyme label="c" type="m">noch</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Haer blaetjens eerst <rhyme label="b" type="f" corresp="#s4:l2">ontluycken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Houdt Harderin, daer is een <rhyme label="a" type="m">deel</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Bedouwde <rhyme label="b" type="f">Maeghdelieven</rhyme>/</l>
        <l id="s5:l3" met="4" type="-+">Sacht Hader, daer is al te <rhyme label="a" type="m" corresp="#s5:l1">veel</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Wel, seght maer u <rhyme label="b" type="f" corresp="#s5:l2">believen</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Streckt u begeer // noch tot yets <rhyme label="c" type="m">meer</rhyme>?</l>
        <l id="s5:l6" met="3" type="-+">Ick sal u wel <rhyme label="b" type="f" corresp="#s5:l2">gerieven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Pluckt my daer noch wat Roosjes <rhyme label="a" type="m">root</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En Thijm, en <rhyme label="b" type="f">Arcoleyen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Gaet haeltse hier maer in mijn <rhyme label="a" type="m" corresp="#s6:l1">schoot</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Daer ginder uyt de <rhyme label="b" type="f" corresp="#s6:l2">weyen</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Wel Harderin // seght maer u <rhyme label="c" type="m">sin</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ick salse u <rhyme label="b" type="f" corresp="#s6:l2">bereyen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Komt doet u dorre blaedtjes <rhyme label="a" type="m">of</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Laet 'k uw dit Kransje <rhyme label="b" type="f">passen</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Ay siet, hoe cierlijck staet u het <rhyme label="a" type="m" corresp="#s7:l1">Lof</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Als om u hooft <rhyme label="b" type="f" corresp="#s7:l2">gewassen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Ja wel hoe soet // staet u dien <rhyme label="c" type="m">hoet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Elck saljer om <rhyme label="b" type="f" corresp="#s7:l2">verrassen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ick sal dit Kransje om mijn <rhyme label="a" type="m">hooft</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Tot uwer eer <rhyme label="b" type="f">bewaren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Soo langh tot dat geheel <rhyme label="a" type="m" corresp="#s8:l1">verdooft</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dees groen-gevlochten <rhyme label="b" type="f" corresp="#s8:l2">blaren</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Tot dattet wort // geheel <rhyme label="c" type="m">verdort</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Sal 't proncken om mijn <rhyme label="b" type="f" corresp="#s8:l2">hayren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
