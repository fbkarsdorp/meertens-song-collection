    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">Geestelijk lied</tag>
    </tags>
    <melody>Een ridder en een meisje jong</melody>
    <categories/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIlt ghy wesen een <rhyme label="a" type="m">Oorloghs-man</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Een Camper een Ridder des <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Laet u teeckenen doe 't wapen <rhyme label="a" type="m" corresp="#s1:l1">an</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Strijden end' vechten moet ghy <rhyme label="b" type="f" corresp="#s1:l2">leeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want wy en hebben hier ghenen <rhyme label="a" type="m">strijdt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Teghen ons vleesch en bloedt <rhyme label="b" type="f">alleene</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Teghens de hoogheydt des wereldts <rhyme label="a" type="m" corresp="#s2:l1">wijt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Moeten wy vechten in 't <rhyme label="b" type="f" corresp="#s2:l2">ghemeene</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Teghen Keyser, Coningh, Vorsten <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Al die de duysterheyt <rhyme label="b" type="f">regieren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Moeten wy kampen tot in den <rhyme label="a" type="m" corresp="#s3:l1">doodt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Oprechten vroom Christus <rhyme label="b" type="f" corresp="#s3:l2">banieren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De schalckheyt, veel argher dan <rhyme label="a" type="m">fenijn</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Der gheesten die in de locht <rhyme label="b" type="f">wercken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Moeten wy oock bevechtende <rhyme label="a" type="m" corresp="#s4:l1">zijn</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Haer loosheydt end' bedrogh <rhyme label="b" type="f" corresp="#s4:l2">aenmercken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sy konnen teeckens end' wonder <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En door een schijn der waerheyt <rhyme label="b" type="f">lieghen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die haer niet vast aen Christum <rhyme label="a" type="m" corresp="#s5:l1">hoen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die sullen sy alle <rhyme label="b" type="f" corresp="#s5:l2">bedrieghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dus laet ons hopen met goet <rhyme label="a" type="m">verdragh</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Verlatende ons quaey <rhyme label="b" type="f">manieren</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Op dat ons Godt in den quaden <rhyme label="a" type="m" corresp="#s6:l1">dagh</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Door sijnen gheest mach wel <rhyme label="b" type="f" corresp="#s6:l2">bestieren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">In een lichaem der sonden <rhyme label="a" type="m">subjeckt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Woont niet Godts Gheest vry van <rhyme label="b" type="f">gheschille</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Noch in gheen ziele hy in en <rhyme label="a" type="m" corresp="#s7:l1">treckt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Onghehoorsaem en quaedt van <rhyme label="b" type="f" corresp="#s7:l2">wille</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer die Christum soecken vroegh en <rhyme label="a" type="m">spa</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Om dienen sonder te <rhyme label="b" type="f">cesseren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Sal hy ontfanghen en vryen van <rhyme label="a" type="m" corresp="#s8:l1">scha</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Indien sy hem niet en <rhyme label="b" type="f" corresp="#s8:l2">temteren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Aendoen sal hy haer sijn wapen <rhyme label="a" type="m">sterck</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Daer mede hy 't al heeft <rhyme label="b" type="f">verwonnen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Ende moet gheven, want 'tis sijn <rhyme label="a" type="m" corresp="#s9:l1">werck</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Victorie sal hy haer <rhyme label="b" type="f" corresp="#s9:l2">jonnen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dus staet, weest vroom in al u <rhyme label="a" type="m">ghevecht</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Omgort u lenden met der <rhyme label="b" type="f">waerheyt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Doet aen dat pansier goedt end' <rhyme label="a" type="m" corresp="#s10:l1">oprecht</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">De gherechtigheyt sonder <rhyme label="b" type="f" corresp="#s10:l2">swaerheyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Weest gheschoeyt aen uwe voeten <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Met d' Euangelium des <rhyme label="b" type="f">vreden</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Om te loopen als een bode <rhyme label="a" type="m" corresp="#s11:l1">snel</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Bootschappen Godts <rhyme label="b" type="f" corresp="#s11:l2">ghenadigheden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Neemt aen 'tgeloove tot een <rhyme label="a" type="m">schilt</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Teghen den Duyvel <rhyme label="b" type="f">onmanierigh</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Waer me gheblust worden en <rhyme label="a" type="m" corresp="#s12:l1">ghestilt</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Alle sijn scherpe pijlen <rhyme label="b" type="f" corresp="#s12:l2">vyerigh</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Den Helm der saligheyt wilt noch <rhyme label="a" type="m">voort</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Cloeckelijck op u hooft oock <rhyme label="b" type="f">stellen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Grijpt dat sweerdt des Gheest, d'welck is Godts <rhyme label="a" type="m" corresp="#s13:l1">woort</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Om u vyanden me te <rhyme label="b" type="f" corresp="#s13:l2">vellen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Draeght Christus teecken dat roode <rhyme label="a" type="m">kruys</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Treckt willigh uyt met hem te <rhyme label="b" type="f">velde</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Lijdt smaet, druck, noot, anghst, doot met <rhyme label="a" type="m" corresp="#s14:l1">confuys</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Neemt soo sijn rijck in met <rhyme label="b" type="f" corresp="#s14:l2">ghewelde</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Wilt loopen kloeck met <rhyme label="a" type="m">verduldigheyt</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Lijdtsaem sonder eenigh <rhyme label="b" type="f">verlanghen</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">In den strijdt die u Godt vooren <rhyme label="a" type="m" corresp="#s15:l1">leyt</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Danckt looft, prijst hem met blijde <rhyme label="b" type="f" corresp="#s15:l2">sanghen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Wilt roepen, smeecken, bidt in den <rhyme label="a" type="m">gheest</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">End' houdt goey waecke t'allen <rhyme label="b" type="f">stonden</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Vlucht niet om druck, lijden of <rhyme label="a" type="m" corresp="#s16:l1">tempeest</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Een oprecht Ridder werdt ghy <rhyme label="b" type="f" corresp="#s16:l2">bevonden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Want die uyt dit strijden wijcken <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Die en sullen Godt niet <rhyme label="b" type="f">behaghen</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Maer die volstandelijck vechten <rhyme label="a" type="m" corresp="#s17:l1">sal</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Tot in den doodt sonder <rhyme label="b" type="f" corresp="#s17:l2">vertsaghen</rhyme>,</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Afwasschen salmen sijn tranen <rhyme label="a" type="m">swaer</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Sijn lijden dat werdt al <rhyme label="b" type="f">ghenesen</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Blinckende kleederen wit ende <rhyme label="a" type="m" corresp="#s18:l1">klaer</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Sal hy aendoen, end' blijde <rhyme label="b" type="f" corresp="#s18:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Een kroone met grooter <rhyme label="a" type="m">melodij</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Sal Christus op sijn hooft oock <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Dat werdt sijn loon en sijn <rhyme label="a" type="m" corresp="#s19:l1">soudij</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Hier boven in dat eeuwigh <rhyme label="b" type="f" corresp="#s19:l2">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
