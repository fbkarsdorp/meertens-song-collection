  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Een Drievuldigh <rhyme label="a" type="f">wesen</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">O Schepper, Heer van <rhyme label="b" type="m">all'</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Rijck Godt <rhyme label="c" type="f">almachtigh</rhyme>!</l>
        <l id="s1:l4" met="3" type="-+">Om uwen naem te <rhyme label="a" type="f" corresp="#s1:l1">vreesen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wy hier in 't Aerdtsche <rhyme label="b" type="m" corresp="#s1:l2">dal</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Zijn uw's <rhyme label="c" type="f" corresp="#s1:l3">ghedachtigh</rhyme>.</l>
        <l id="s1:l7" met="2" type="-+">Maer ons <rhyme label="d" type="m">verstandt</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Kan al ter <rhyme label="d" type="m" corresp="#s1:l7">handt</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Uw' weerdigheydt niet <rhyme label="e" type="f">vaten</rhyme>:</l>
        <l id="s1:l10" met="2" type="-+">Sonder <rhyme label="f" type="f">beginne</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Uw' macht is, en uw' <rhyme label="f" type="f" corresp="#s1:l10">minne</rhyme></l>
        <l id="s1:l12" met="2" type="+-">Buyten <rhyme label="e" type="f" corresp="#s1:l9">maten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O Vader <rhyme label="a" type="f">aenghebooren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ghebooren eeuwigh <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">O Gheest vol <rhyme label="c" type="f">minnen</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Ghy hebt ons laten <rhyme label="a" type="f" corresp="#s2:l1">hooren</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Voor 't Evangeli' <rhyme label="b" type="m" corresp="#s2:l2">schoon</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En diep van <rhyme label="c" type="f" corresp="#s2:l3">sinne</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Dat, sonder <rhyme label="d" type="m">spot</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Ghy zijt een <rhyme label="d" type="m" corresp="#s2:l7">Godt</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Een eeuwigh eenigh <rhyme label="e" type="f">wesen</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Nochtans, <rhyme label="f" type="f">ydoone</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Verscheyden drie <rhyme label="f" type="f" corresp="#s2:l10">persoonen</rhyme></l>
        <l id="s2:l12" met="2" type="+-"><rhyme label="e" type="f" corresp="#s2:l9">Wt-ghelesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dus ons verstandt <rhyme label="a" type="f">ghevanghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wy gheven, Heere <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Tot uwe <rhyme label="c" type="f">leere</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">En bidden met <rhyme label="a" type="f" corresp="#s3:l1">verlanghen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Helpt toch, in allen <rhyme label="b" type="m" corresp="#s3:l2">noodt</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">U schepsels <rhyme label="c" type="f" corresp="#s3:l3">teere</rhyme>.</l>
        <l id="s3:l7" met="2" type="-+">Ghy zijt het <rhyme label="d" type="m">licht</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Dat ons hier <rhyme label="d" type="m" corresp="#s3:l7">sticht</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Uw' macht, wijsheydt en <rhyme label="e" type="f">minne</rhyme>,</l>
        <l id="s3:l10" met="2" type="-+">Om meer te <rhyme label="f" type="f">mercken</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Wilt, Heer, Drievuldigh, <rhyme label="f" type="f" corresp="#s3:l10">wercken</rhyme></l>
        <l id="s3:l12" met="2" type="+-">In ons' <rhyme label="e" type="f" corresp="#s3:l9">sinnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
