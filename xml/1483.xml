    <tags/>
    <melody>Ik peins om een persoon</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk peyns op een <rhyme label="a" type="f">persoone</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Nacht ende dach soo <rhyme label="b" type="m">zwaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want daer en is gheen <rhyme label="a" type="f" corresp="#s1:l1">schoonder</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In mijnen sin <rhyme label="b" type="m" corresp="#s1:l2">voorwaer</rhyme></l>
        <l id="s1:l5" met="8" type="-+">Ick wou dat ick altijt by haer <rhyme label="b" type="m" corresp="#s1:l2">waer</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat ick by haer niet wesen en <rhyme label="c" type="m">mach</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Elck uyr dunckt my een <rhyme label="b" type="m" corresp="#s1:l2">jaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Niemant mach ick <rhyme label="a" type="f">claghen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dan alleen die ooghen <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In mijn hert moet ick <rhyme label="a" type="f" corresp="#s2:l1">draghen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dit bitter lijden <rhyme label="b" type="m" corresp="#s2:l2">pijn</rhyme>,</l>
        <l id="s2:l5" met="8" type="-+">Schoone woorden verleende sy <rhyme label="b" type="m" corresp="#s2:l2">mijn</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Maer nu sy weet al mijn <rhyme label="c" type="m">secreet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Nu laet sy my in <rhyme label="b" type="m" corresp="#s2:l2">pijn</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het is onlangs <rhyme label="a" type="f">gheleden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat ickse laestmael <rhyme label="b" type="m">sach</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Doen was ick wel te <rhyme label="a" type="f" corresp="#s3:l1">vreden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Nu treur ik met <rhyme label="b" type="m" corresp="#s3:l2">geclach</rhyme>,</l>
        <l id="s3:l5" met="8" type="-+">Ick can niet langher <rhyme label="b" type="m" corresp="#s3:l2">wederstaen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">O lijden groot o bittere <rhyme label="c" type="m">doot</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Ick en can niet <rhyme label="b" type="m" corresp="#s3:l2">ontgaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Schoon lief ghedenckt mijn <rhyme label="a" type="f">pijne</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat ick heel <rhyme label="b" type="m">desolaet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Van u absent moet <rhyme label="a" type="f" corresp="#s4:l1">zijne</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Troost my eert valt te <rhyme label="b" type="m" corresp="#s4:l2">laet</rhyme></l>
        <l id="s4:l5" met="8" type="-+">Mijn herteken leyt in <rhyme label="b" type="m" corresp="#s4:l2">desperaet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Ick waer verheucht, schoon liefste <rhyme label="c" type="m">jeucht</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Soo ghy my quaemt te <rhyme label="b" type="m" corresp="#s4:l2">baet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">'Tis pijn al boven <rhyme label="a" type="f">maten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Nu ghy die oorsaeck <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat ick u lief moet <rhyme label="a" type="f" corresp="#s5:l1">laten</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En blijven int <rhyme label="b" type="m" corresp="#s5:l2">verdriet</rhyme>,</l>
        <l id="s5:l5" met="8" type="-+">'Tis onghelijck hoort mijn <rhyme label="b" type="m" corresp="#s5:l2">bediet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Ick peyns en ly, ghy zijt <rhyme label="c" type="m">party</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Van t'gheen dat my <rhyme label="b" type="m" corresp="#s5:l2">gheschiet</rhyme>.</l>
      </lg>
    </lg>
  </text>
