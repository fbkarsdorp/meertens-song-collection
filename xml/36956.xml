  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAer wort oprechter <rhyme label="a" type="m">trouw</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Als tusschen Man en <rhyme label="a" type="m" corresp="#s1:l1">Vrouw</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ter werelt oyt <rhyme label="b" type="f">gevonden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Twee herten hert aen <rhyme label="c" type="m">een</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Soo in vreught als <rhyme label="c" type="m" corresp="#s1:l4">gheween</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">Door Liefdes-bandt <rhyme label="b" type="f" corresp="#s1:l3">ghebonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Den bandt die 't herte <rhyme label="a" type="m">bindt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Der Moeder aen haer <rhyme label="a" type="m" corresp="#s2:l1">Kindt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ghebaert in pyn, en <rhyme label="b" type="f">smerte</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat sy haer borsten <rhyme label="c" type="m">gheeft</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En neghen maenden <rhyme label="c" type="m" corresp="#s2:l4">heeft</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ghedraghen onder 't <rhyme label="b" type="f" corresp="#s2:l3">herte</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Noch stercker bindt den <rhyme label="a" type="m">bandt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Der liefde handt aen <rhyme label="a" type="m" corresp="#s3:l1">handt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">En hert aen hert te <rhyme label="b" type="f">samen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die in de min <rhyme label="c" type="m">ghewont</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Door t' heyligh trouw <rhyme label="c" type="m" corresp="#s3:l4">verbont</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In 't Houwelyck <rhyme label="b" type="f" corresp="#s3:l3">versamen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De liefde die de <rhyme label="a" type="m">Vrouw</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Bindt door de suyver <rhyme label="a" type="m" corresp="#s4:l1">trouw</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Met haren Man te <rhyme label="b" type="f">gader</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Is sterck ghelyck de <rhyme label="c" type="m">doodt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Gheen liefd' en is soo <rhyme label="c" type="m" corresp="#s4:l4">groot</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Oft komt Godts liefde <rhyme label="b" type="f" corresp="#s4:l3">nader</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De liefden is <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Voor t' vierighst' <rhyme label="a" type="m" corresp="#s5:l1">element</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat Zielen kan <rhyme label="b" type="f">ontsteken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'t Cement der liefde <rhyme label="c" type="m">bindt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Twee herten eens <rhyme label="c" type="m" corresp="#s5:l4">ghesint</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Daer herte muren <rhyme label="b" type="f" corresp="#s5:l3">breken</rhyme>,</l>
      </lg>
    </lg>
  </text>
