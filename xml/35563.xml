    <melody>Gelijk als de witte zwaan</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">CLeyn, ootmoedich, soet en <rhyme label="a" type="f">stille</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Mijn ziel houdt u toch <rhyme label="b" type="m">altijt</rhyme>.</l>
        <l id="s1:l3" met="4" type="+-">Gaet het niet naer uwen <rhyme label="a" type="f" corresp="#s1:l1">wille</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Wordt ghy veel veracht, <rhyme label="b" type="m" corresp="#s1:l2">benijdt</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">En daer toe bespot, <rhyme label="c" type="f">bestreden</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Van veel <rhyme label="d" type="m">ghehaet</rhyme>:</l>
        <l id="s1:l7" met="4" type="+-">Denckt, dat Godt niet sonder <rhyme label="c" type="f" corresp="#s1:l5">reden</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Dit toe en <rhyme label="d" type="m" corresp="#s1:l6">laet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wilt u nerghens in <rhyme label="a" type="f">turbeeren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Noch verliesen oyt den <rhyme label="b" type="m">moet</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Maer terstondt tot Godt u <rhyme label="a" type="f" corresp="#s2:l1">keeren</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Als tot uwen oorsprongh <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Die sijn Liefste dus comt <rhyme label="c" type="f">proeven</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Hier inden <rhyme label="d" type="m">tijdt</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Daerom wilt u niet <rhyme label="c" type="f" corresp="#s2:l5">bedroeven</rhyme>;</l>
        <l id="s2:l8" met="2" type="-+">Maer vroomlijck <rhyme label="d" type="m" corresp="#s2:l6">strijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Al zijdy in <rhyme label="a" type="f">tribulati'</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Dorr', verduystert, <rhyme label="b" type="m">desolaet</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">En denckt niet dat u Godts <rhyme label="a" type="f" corresp="#s3:l1">grati'</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Daerom eenichsins <rhyme label="b" type="m" corresp="#s3:l2">verlaet</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Iae al schijnt uw' hert <rhyme label="c" type="f">bevrosen</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Ende <rhyme label="d" type="m">verkouwt</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Godt die heeft u <rhyme label="c" type="f" corresp="#s3:l5">uytvercosen</rhyme>;</l>
        <l id="s3:l8" met="2" type="-+">Op hem <rhyme label="d" type="m" corresp="#s3:l6">betrouwt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Haestelijck soo sal <rhyme label="a" type="f">verdwijnen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Alle duysterheyt en <rhyme label="b" type="m">smert</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Als Godts licht begint te <rhyme label="a" type="f" corresp="#s4:l1">schijnen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">In het midden van uw' <rhyme label="b" type="m" corresp="#s4:l2">hert</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Dan sullen de deughden <rhyme label="c" type="f">groeyen</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Suyver en <rhyme label="d" type="m">reyn</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Die den gheest Godts sal <rhyme label="c" type="f" corresp="#s4:l5">besproeyen</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Alle <rhyme label="d" type="m" corresp="#s4:l6">ghemeyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Weest altoys, simpel, <rhyme label="a" type="f">ghelaten</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">En ghebonden aen Godes <rhyme label="b" type="m">will'</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Doet goet aen de gheen u <rhyme label="a" type="f" corresp="#s5:l1">haten</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Hoort, siet, swijght: maeckt gheen <rhyme label="b" type="m" corresp="#s5:l2">gheschill'</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Neemt uw' toevlucht t'allen <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Tot 't heylich <rhyme label="d" type="m">Cruys</rhyme>.</l>
        <l id="s5:l7" met="4" type="+-">Sluyt u daer in Iesus <rhyme label="c" type="f" corresp="#s5:l5">wonden</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Als in een <rhyme label="d" type="m" corresp="#s5:l6">Cluys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">In Godts open hert <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Stelt uw' woon-plaets ende <rhyme label="b" type="m">rust</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Laet uw' meyningh suyver <rhyme label="a" type="f" corresp="#s6:l1">wesen</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">Soeckt gheen eyghen baet, noch <rhyme label="b" type="m" corresp="#s6:l2">lust</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">In Godts wil wilt u <rhyme label="c" type="f">vermaecken</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">En met <rhyme label="d" type="m">ootmoet</rhyme>;</l>
        <l id="s6:l7" met="4" type="+-">Soo suldy den Heere <rhyme label="c" type="f" corresp="#s6:l5">smaecken</rhyme>:</l>
        <l id="s6:l8" met="2" type="-+">Want hy is <rhyme label="d" type="m" corresp="#s6:l6">soet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Al uw' krachten ende <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Keert tot Godt sonder <rhyme label="b" type="m">verdriet</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">Luystert nauw, en hoort van <rhyme label="a" type="f" corresp="#s7:l1">binnen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Wat Godts liefde u <rhyme label="b" type="m" corresp="#s7:l2">ghebiet</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Den reuck sijnder <rhyme label="c" type="f">specerijen</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Volght met <rhyme label="d" type="m">vlijt</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Soo suldy blij-moedich <rhyme label="c" type="f" corresp="#s7:l5">strijen</rhyme></l>
        <l id="s7:l8" met="2" type="-+">In allen <rhyme label="d" type="m" corresp="#s7:l6">tijdt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Nae de deught wilt altijt <rhyme label="a" type="f">haecken</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">En nae 't gheen u tot Godt <rhyme label="b" type="m">leydt</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">Wilt oock desghelijcx <rhyme label="a" type="f" corresp="#s8:l1">versaecken</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Al wat u van Godt <rhyme label="b" type="m" corresp="#s8:l2">af-scheydt</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">En rust op gheen <rhyme label="c" type="f">creatueren</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Wie dattet <rhyme label="d" type="m">zijn</rhyme>:</l>
        <l id="s8:l7" met="4" type="+-">Want ghy sout het naer <rhyme label="c" type="f" corresp="#s8:l5">besueren</rhyme></l>
        <l id="s8:l8" met="2" type="-+">Met sware <rhyme label="d" type="m" corresp="#s8:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Sachtmoedich, en puer van <rhyme label="a" type="f">gronde</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Blijft met Godt altijt <rhyme label="b" type="m">vereent</rhyme>.</l>
        <l id="s9:l3" met="4" type="+-">Nimmermeer spreeckt met de <rhyme label="a" type="f" corresp="#s9:l1">monde</rhyme></l>
        <l id="s9:l4" met="4" type="+-">'T gheen uw' herte niet en <rhyme label="b" type="m" corresp="#s9:l2">meent</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">In het midden vande <rhyme label="c" type="f">menschen</rhyme></l>
        <l id="s9:l6" met="2" type="-+">Woont g'lijck <rhyme label="d" type="m">alleen</rhyme>.</l>
        <l id="s9:l7" met="4" type="+-">Dient den Heere nae uw' <rhyme label="c" type="f" corresp="#s9:l5">wenschen</rhyme></l>
        <l id="s9:l8" met="2" type="-+">In het <rhyme label="d" type="m" corresp="#s9:l6">ghemeen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
