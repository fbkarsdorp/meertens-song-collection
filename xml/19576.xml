  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HVil Borste huil; nok zie te <rhyme label="a" type="f">vlieten</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Door ‘t hart <rhyme label="a" type="f" corresp="#s1:l1">verdrieten</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat my, mijn Enigste <rhyme label="b" type="m">aendoet</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Vol amper <rhyme label="b" type="m" corresp="#s1:l3">roet</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Bruis als een Zee, met <rhyme label="c" type="f">peekeltranen</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Die kuilge <rhyme label="c" type="f" corresp="#s1:l5">banen</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Nu maken op mijn dorre <rhyme label="d" type="m">wang</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">O, ‘t vald te <rhyme label="d" type="m" corresp="#s1:l7">bang</rhyme>!</l>
        <l id="s1:l9" met="2" type="-+">O! zmeldt in <rhyme label="e" type="f">schreien</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">En queezlig <rhyme label="e" type="f" corresp="#s1:l9">vleien</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Boezemd uw’ <rhyme label="f" type="m">verdriet</rhyme>.</l>
        <l id="s1:l12" met="2" type="+-">Vroom <rhyme label="g" type="m">gemoed</rhyme>!</l>
        <l id="s1:l13" met="2" type="+-">Die u <rhyme label="g" type="m" corresp="#s1:l12">bloed</rhyme>,</l>
        <l id="s1:l14" met="2" type="+-">Zuiver <rhyme label="g" type="m" corresp="#s1:l12">voed</rhyme></l>
        <l id="s1:l15" met="4" type="+-">In een Kristalijnne <rhyme label="g" type="m" corresp="#s1:l12">vloed</rhyme>,</l>
        <l id="s1:l16" met="4" type="+-">En nooit zmet met pekzwart <rhyme label="g" type="m" corresp="#s1:l12">roet</rhyme>.</l>
        <l id="s1:l17" met="3" type="+-">Zie ‘t gun nu <rhyme label="f" type="m" corresp="#s1:l11">geschied</rhyme>!</l>
        <l id="s1:l18" met="2" type="-+">Stort uit uw’ <rhyme label="h" type="f">oogen</rhyme></l>
        <l id="s1:l19" met="2" type="-+">Volnokte <rhyme label="h" type="f" corresp="#s1:l18">toogen</rhyme>,</l>
        <l id="s1:l20" met="3" type="+-">Om de <rhyme label="i" type="m">wrevelheid</rhyme>,</l>
        <l id="s1:l21" met="2" type="+-">Dieze <rhyme label="j" type="m">toond</rhyme>,</l>
        <l id="s1:l22" met="2" type="+-">Die my <rhyme label="j" type="m" corresp="#s1:l21">troond</rhyme>,</l>
        <l id="s1:l23" met="2" type="+-">En <rhyme label="j" type="m" corresp="#s1:l21">ontkroond</rhyme>,</l>
        <l id="s1:l24" met="4" type="+-">En nog in mijn harte <rhyme label="j" type="m" corresp="#s1:l21">woond</rhyme>,</l>
        <l id="s1:l25" met="4" type="+-">Schoon zy my schijnbaar <rhyme label="j" type="m" corresp="#s1:l21">loond</rhyme></l>
        <l id="s1:l26" met="3" type="+-">Met haar <rhyme label="i" type="m" corresp="#s1:l20">strevelheid</rhyme>.</l>
        <l id="s1:l27" met="4" type="+-">‘K hoop zy zal’er eens <rhyme label="k" type="f">bedenkken</rhyme>,</l>
        <l id="s1:l28" met="2" type="+-">En my <rhyme label="k" type="f" corresp="#s1:l27">schenkken</rhyme>,</l>
        <l id="s1:l29" met="1" type="+-">‘T <rhyme label="l" type="m">lang</rhyme>,</l>
        <l id="s1:l30" met="1" type="-+">Maar <rhyme label="l" type="m" corresp="#s1:l29">bang</rhyme>,</l>
        <l id="s1:l31" met="1" type="-+">En <rhyme label="l" type="m" corresp="#s1:l29">strang</rhyme>,</l>
        <l id="s1:l32" met="1" type="-+"><rhyme label="m" type="m">Geluk</rhyme>,</l>
        <l id="s1:l33" met="4" type="+-">In men hartelijkke <rhyme label="m" type="m" corresp="#s1:l32">druk</rhyme>:</l>
        <l id="s1:l34" met="4" type="+-">Hoewel ‘t komt zo traag <rhyme label="n" type="f">gelopen</rhyme>,</l>
        <l id="s1:l35" met="2" type="+-">En <rhyme label="n" type="f" corresp="#s1:l34">gekropen</rhyme>,</l>
        <l id="s1:l36" met="1" type="+-">‘K <rhyme label="o" type="m">zal</rhyme>,</l>
        <l id="s1:l37" met="1" type="+-">‘T <rhyme label="o" type="m" corresp="#s1:l36">geval</rhyme></l>
        <l id="s1:l38" met="1" type="+-">Nog <rhyme label="o" type="m" corresp="#s1:l36">al</rhyme>,</l>
        <l id="s1:l39" met="1" type="+-"><rhyme label="p" type="m">aanzien</rhyme>:</l>
        <l id="s1:l40" met="4" type="+-">Wie weet wat nog kan <rhyme label="p" type="m" corresp="#s1:l39">geschien</rhyme>?</l>
      </lg>
    </lg>
