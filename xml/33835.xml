  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAnneer als gy wilt <rhyme label="a" type="f">bidden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Bidt op geen hoek van <rhyme label="b" type="m">straet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Of maekt niet dat g' in 't <rhyme label="a" type="f" corresp="#s1:l1">midden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Der Synagoge <rhyme label="b" type="m" corresp="#s1:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dat sijn beveynsde <rhyme label="a" type="f">werken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die dat doen om den <rhyme label="b" type="m">toon</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat menschen 't soude <rhyme label="a" type="f" corresp="#s2:l1">merken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Maer s' hebben haren <rhyme label="b" type="m" corresp="#s2:l2">loon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Indien gy uw <rhyme label="a" type="f">gebeeden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Te degen spreken <rhyme label="b" type="m">wilt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sult in uw Kamer <rhyme label="a" type="f" corresp="#s3:l1">treeden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En bidden daer in <rhyme label="b" type="m" corresp="#s3:l2">stilt'</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Bidt met geslooten <rhyme label="a" type="f">dooren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In 't heymelijk uw <rhyme label="b" type="m">VaÃªr</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die sal 't wel sien en <rhyme label="a" type="f" corresp="#s4:l1">hooren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En loonen u <rhyme label="b" type="m" corresp="#s4:l2">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">En wilt ook niet veel <rhyme label="a" type="f">kallen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Gelijk de Heydens <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die meenen met haer <rhyme label="a" type="f" corresp="#s5:l1">rallen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Te krijgen haer <rhyme label="b" type="m" corresp="#s5:l2">versoen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gelijkt u niet by <rhyme label="a" type="f">heure</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Uw' Vader <rhyme label="b" type="m">goedertier</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Weet uw gebrek te <rhyme label="a" type="f" corresp="#s6:l1">veure</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dus bidt op dees <rhyme label="b" type="m" corresp="#s6:l2">manier</rhyme>.</l>
      </lg>
    </lg>
  </text>
