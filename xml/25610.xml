    <melody>Kom Heilige Geest schijn in ons klaar</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="religion">godsdienst</category>
      <category translation="formal genres">formele genres</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Comt heylighe Gheest met uwer <rhyme label="a" type="m">cracht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Troost ghy ons int <rhyme label="b" type="f">benouwen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Vervult uwen dienst hoogh <rhyme label="a" type="m" corresp="#s1:l1">gheacht</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Aen ons soo wy <rhyme label="b" type="f" corresp="#s1:l2">betrouwen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Zijnde zondich <rhyme label="c" type="m">belaen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat wy dan troost <rhyme label="c" type="m" corresp="#s1:l5">ontfaen</rhyme></l>
        <l id="s1:l7" met="4" type="-+">In onse leyt // en <rhyme label="d" type="m">bangicheyt</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Soo Christus ons heeft <rhyme label="d" type="m" corresp="#s1:l7">toegheseyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Reyckt ons u handt als wy gaen <rhyme label="a" type="m">voort</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In het Godtsalich <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om te volbrenghen soo’t <rhyme label="a" type="m" corresp="#s2:l1">behoort</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Daer toe wy ons <rhyme label="b" type="f" corresp="#s2:l2">begheven</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Hebben, in die <rhyme label="c" type="m">foreest</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ghy onse trooster <rhyme label="c" type="m" corresp="#s2:l5">weest</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Helpt ons nu doch // in swackheyt <rhyme label="d" type="m">noch</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Behoedt ons voor Satans <rhyme label="d" type="m" corresp="#s2:l7">bedroch</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Neemt onser doch in dees tijdt <rhyme label="a" type="m">waer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Als wy nu moeten <rhyme label="b" type="f">derven</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Het Vaderlandt hier boven <rhyme label="a" type="m" corresp="#s3:l1">claer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En in dees Weerelt <rhyme label="b" type="f" corresp="#s3:l2">swerven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Verheft doch nu <rhyme label="c" type="m">ghelijck</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">T’ghemoedt int <rhyme label="c" type="m" corresp="#s3:l5">Hemelrijck</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">By dat propoost // houdt ons <rhyme label="d" type="m">altoost</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Heylighe Gheest ons soo <rhyme label="d" type="m" corresp="#s3:l7">vertroost</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Laet ons verlichten door u <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Godes <rhyme label="b" type="f">verborghentheyden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ghy seyndt bood’ die ons recht <rhyme label="a" type="m" corresp="#s4:l1">bericht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gods wil condt <rhyme label="b" type="f" corresp="#s4:l2">onderscheyden</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Wat wy sullen <rhyme label="c" type="m">bequaem</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ghelooven naer <rhyme label="c" type="m" corresp="#s4:l5">t’betaem</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Tot Godes eer // nu even <rhyme label="d" type="m">seer</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Verlicht ons daer in altijdt <rhyme label="d" type="m" corresp="#s4:l7">meer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ist dat wy noch dalen <rhyme label="a" type="m">alhier</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Soo wilt ons doch recht <rhyme label="b" type="f">leeren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Vwe waerheyt seer <rhyme label="a" type="m" corresp="#s5:l1">goedertier</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Int hert, mondt, en <rhyme label="b" type="f" corresp="#s5:l2">t’verkeeren</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Der wercken <rhyme label="c" type="m">aldermeest</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">O ghy heylighe <rhyme label="c" type="m" corresp="#s5:l5">Gheest</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Ghy Leeraer gaet // comt met der <rhyme label="d" type="m">spoet</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">En ons soo onderwijsen <rhyme label="d" type="m" corresp="#s5:l7">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Cortlijck betuyght in ons te <rhyme label="a" type="m">gaer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Noch t’recht gheloove <rhyme label="b" type="f">crachtich</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En sterckt ons daer in <rhyme label="a" type="m" corresp="#s6:l1">openbaer</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Lieflijck te zijn <rhyme label="b" type="f" corresp="#s6:l2">aendachtich</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Sijt ghy ons <rhyme label="c" type="m">toeverlaet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Zoo nu vroech ende <rhyme label="c" type="m" corresp="#s6:l5">laet</rhyme></l>
        <l id="s6:l7" met="4" type="-+">By ons met schijn // O Godt en <rhyme label="d" type="m">fijn</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Moet dit voor Christum Amen <rhyme label="d" type="m" corresp="#s6:l7">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
