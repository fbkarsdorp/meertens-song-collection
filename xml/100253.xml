      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MYn troosteloose <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s1:l2" met="5" type="-+">Is nu ten eind. Ik moet ten grave <rhyme label="b" type="f">varen</rhyme>.</l>
