    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Barbara ons herte <rhyme label="a" type="m">verblijt</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">Want ghi der werelt troestelic <rhyme label="a" type="m" corresp="#s1:l1">sijt</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Reyn edel maecht gi sijt soe <rhyme label="a" type="m">fijn</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Die coninc begeert v scoen <rhyme label="a" type="m" corresp="#s2:l1">aenscijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Vwer werdicheit wi niet en connen <rhyme label="a" type="m">geliken</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Dan der heileger <rhyme label="a" type="m" corresp="#s3:l1">sonnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Van beginne waerdi <rhyme label="a" type="m">vercoren</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Ende in die stat der sonnen <rhyme label="a" type="m" corresp="#s4:l1">geboren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O scone sonne nv <rhyme label="a" type="m">openbaert</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">Ende ons duysternesse die <rhyme label="a" type="m" corresp="#s5:l1">verclaert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Naest gods moeder hier aen v <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Der armer zielen <rhyme label="a" type="m" corresp="#s6:l1">toeuerlaet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O medecine der zielen <rhyme label="a" type="m">cracht</rhyme>.</l>
        <l id="s7:l2" met="3" type="-+">V eygen es dwingen des viants <rhyme label="a" type="m" corresp="#s7:l1">macht</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
