    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MYn waerde Siel, siet togh om <rhyme label="a" type="m">hoogh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En denkt wat magh togh sijn daer <rhyme label="b" type="f">booven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ten Hemel-waerts soo slaet u <rhyme label="a" type="m" corresp="#s1:l1">oogh</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En wilt de Weerelt niet <rhyme label="b" type="f" corresp="#s1:l2">gelooven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Weerelt somtijts wat <rhyme label="a" type="m">verheught</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Maer 's menschen hart kan niet <rhyme label="b" type="f">bedenken</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Hoe groot dat is des Heemels <rhyme label="a" type="m" corresp="#s2:l1">vreught</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die Godt wil sijn minnaren <rhyme label="b" type="f" corresp="#s2:l2">schenken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het lyden dat ons sughten <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Of 's weerelts vreught is niet te <rhyme label="b" type="f">aghten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">By 't overgroote Heemels <rhyme label="a" type="m" corresp="#s3:l1">goet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat ons van Godt staet te <rhyme label="b" type="f" corresp="#s3:l2">verwaghten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Te woonen in een Stadt soo <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die om haer schoonheyt heet te <rhyme label="b" type="f">weesen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">De Bruydt des Lams, dat is, Goodts <rhyme label="a" type="m" corresp="#s4:l1">Soon</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Die is haer Bruydegom <rhyme label="b" type="f" corresp="#s4:l2">gepreesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Haer straten sijn van suyver <rhyme label="a" type="m">Goudt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Haer mueren, met haer twaelef <rhyme label="b" type="f">poorten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Sijn in 't vierkandt seer wel <rhyme label="a" type="m" corresp="#s5:l1">geboudt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Van eel Gesteent der beste <rhyme label="b" type="f" corresp="#s5:l2">soorten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">De klaerheyt Goodts men daer <rhyme label="a" type="m">aensiet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Soo blinkend' en soo helder <rhyme label="b" type="f">schijnen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dat Sonn' nogh Maen daer dienen <rhyme label="a" type="m" corresp="#s6:l1">niet</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Want al haer licht souw strax <rhyme label="b" type="f" corresp="#s6:l2">verdwijnen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Te wonder ruym is het <rhyme label="a" type="m">aldaer</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Met woorden kan men 't geensins <rhyme label="b" type="f">seggen</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Veel duysent Weerelts souden <rhyme label="a" type="m" corresp="#s7:l1">maer</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Vermogen een kleyn plaets <rhyme label="b" type="f" corresp="#s7:l2">beleggen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">d' Inwoonders sijn sonder <rhyme label="a" type="m">getal</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Veel duysenden sijn Goodts <rhyme label="b" type="f">dienaren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Ontalbaer volk uyt 's Weerelts <rhyme label="a" type="m" corresp="#s8:l1">dal</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Van alle talen groote <rhyme label="b" type="f" corresp="#s8:l2">scharen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Het sijn al Broeders van Goodts <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Als 's Heemels glans sy cierlijk <rhyme label="b" type="f">blinken</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Rijk, eedel, glorieus, en <rhyme label="a" type="m" corresp="#s9:l1">schoon</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Vroolijk, Goodts lof haer stemmen <rhyme label="b" type="f" corresp="#s9:l2">klinken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Het aenschijn Goodts is haer <rhyme label="a" type="m">vermaek</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dat s' in der eeuwigheyt <rhyme label="b" type="f">aenschouwen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En haer versaedt geen ander <rhyme label="a" type="m" corresp="#s10:l1">saek</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Dan Godt vereenight te <rhyme label="b" type="f" corresp="#s10:l2">behouwen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Uw' Tabernakel, Heer, ik <rhyme label="a" type="m">wensch</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Mijn Siele haekt met groot <rhyme label="b" type="f">verlangen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Ogh, wie is soo geluckigh <rhyme label="a" type="m" corresp="#s11:l1">mensch</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Die gy Heer daer in sult <rhyme label="b" type="f" corresp="#s11:l2">ontfangen</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Die boven al bemindt sijn <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Daer nae sijn naesten <rhyme label="b" type="f">altemale</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Die sal bekoomen dit goet <rhyme label="a" type="m" corresp="#s12:l1">lot</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Dat Godt hem brengh in 's Heemels <rhyme label="b" type="f" corresp="#s12:l2">Sale</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Daer sal Godt wegh doen al 't <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Met blyschap sal Godt hem <rhyme label="b" type="f">versaeden</rhyme>;</l>
        <l id="s13:l3" met="4" type="-+">Nogh nacht, nogh doodt, vindt men daer <rhyme label="a" type="m" corresp="#s13:l1">niet</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Geen saek die welk souw mogen <rhyme label="b" type="f" corresp="#s13:l2">schaden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Sijn hart wordt daer dan soo <rhyme label="a" type="m">versaet</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Dat het wort vol van <rhyme label="b" type="f">jubileeren</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">En loven Godt van sijn <rhyme label="a" type="m" corresp="#s14:l1">weldaet</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En prijsen Godt den Heer der <rhyme label="b" type="f" corresp="#s14:l2">Heeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
