  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">1.KOm, Iesus <rhyme label="a" type="m">vorst</rhyme>!</l>
        <l id="s1:l2" met="5" type="-+">Vol Majestait, met uw geswinde <rhyme label="b" type="m">rei</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Van <rhyme label="c" type="f">Heemel-booden</rhyme>;</l>
        <l id="s1:l4" met="2" type="-+">Onz' ziele <rhyme label="a" type="m" corresp="#s1:l1">dorst</rhyme>,</l>
        <l id="s1:l5" met="5" type="-+">Te zien uw rijks en magts wijd <rhyme label="b" type="m" corresp="#s1:l2">uit-gebrei</rhyme>.</l>
        <l id="s1:l6" met="2" type="-+">Kom Heer der <rhyme label="c" type="f" corresp="#s1:l3">Gooden</rhyme>!</l>
        <l id="s1:l7" met="5" type="-+">En zen uw Englen op der aarden <rhyme label="d" type="m">ne'er</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">Op datze 't goede kruid vergaad'ren, <rhyme label="d" type="m" corresp="#s1:l7">Heer</rhyme>!</l>
        <l id="s1:l9" met="5" type="-+">In uwe schuur; en 't vuur het quaad <rhyme label="d" type="m" corresp="#s1:l7">verteer</rhyme>,</l>
        <l id="s1:l10" met="1" type="-+">Met <rhyme label="e" type="m">kracht</rhyme>,</l>
        <l id="s1:l11" met="1" type="+-">En <rhyme label="e" type="m" corresp="#s1:l10">macht</rhyme>,</l>
        <l id="s1:l12" met="1" type="-+">En <rhyme label="e" type="m" corresp="#s1:l10">pracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Laat, Heer! den <rhyme label="a" type="m">Geest</rhyme></l>
        <l id="s2:l2" met="5" type="-+">Des leevens we'er in-gaan met vollen <rhyme label="b" type="m">kracht</rhyme></l>
        <l id="s2:l3" met="2" type="-+">In uw <rhyme label="c" type="f">getuigen</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Die door het <rhyme label="a" type="m" corresp="#s2:l1">beest</rhyme>,</l>
        <l id="s2:l5" met="5" type="-+">Naa haar getuig'nis eind, zijn <rhyme label="b" type="m" corresp="#s2:l2">om-gebracht</rhyme>;</l>
        <l id="s2:l6" met="2" type="-+">En wilt <rhyme label="c" type="f" corresp="#s2:l3">betuigen</rhyme></l>
        <l id="s2:l7" met="5" type="-+">Door haar, wat nog hier naa geschieden <rhyme label="d" type="m">zal</rhyme>.</l>
        <l id="s2:l8" met="5" type="-+">Op dat elk zeeker zy van Babels <rhyme label="d" type="m" corresp="#s2:l7">val</rhyme>.</l>
        <l id="s2:l9" met="5" type="-+">Och! zag onz oog die wonder-teekens <rhyme label="d" type="m" corresp="#s2:l7">all'</rhyme>,</l>
        <l id="s2:l10" met="1" type="-+">Ons <rhyme label="e" type="m">hert</rhyme>,</l>
        <l id="s2:l11" met="1" type="+-">Dat <rhyme label="e" type="m" corresp="#s2:l10">werd</rhyme></l>
        <l id="s2:l12" met="1" type="-+"><rhyme label="e" type="m" corresp="#s2:l10">Ont-werd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Kom stort die <rhyme label="a" type="m">groot'</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Van elk gevleide Hoer, wiens purp're <rhyme label="b" type="m">kle'en</rhyme></l>
        <l id="s3:l3" met="2" type="-+">'t Oog haarder <rhyme label="c" type="f">boelen</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Toe-lonkend <rhyme label="a" type="m" corresp="#s3:l1">nood</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">Dat haar ziel-toovery eens val daar <rhyme label="b" type="m" corresp="#s3:l2">heen</rhyme>:</l>
        <l id="s3:l6" met="2" type="-+">De <rhyme label="c" type="f" corresp="#s3:l3">grouwel-poelen</rhyme></l>
        <l id="s3:l7" met="5" type="-+">Van haar vergiste valsche Gods-diensts <rhyme label="d" type="m">schijn</rhyme>,</l>
        <l id="s3:l8" met="5" type="-+">Haar eer, en leer en alle glans <rhyme label="d" type="m" corresp="#s3:l7">verdwijn</rhyme>.</l>
        <l id="s3:l9" met="5" type="-+">Op dat zy drink des dubb'len beekers <rhyme label="d" type="m" corresp="#s3:l7">pijn</rhyme>,</l>
        <l id="s3:l10" met="1" type="-+">En <rhyme label="e" type="m">druk</rhyme></l>
        <l id="s3:l11" met="1" type="+-">Haar 't <rhyme label="e" type="m" corresp="#s3:l10">luk</rhyme></l>
        <l id="s3:l12" met="1" type="-+"><rhyme label="e" type="m" corresp="#s3:l10">Ont-ruk</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Van, vat het <rhyme label="a" type="m">dier</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Dat vol Gods-lastering zijn gift <rhyme label="b" type="m">uit-braakt</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Door <rhyme label="c" type="f">bloed-placcaten</rhyme>;</l>
        <l id="s4:l4" met="2" type="-+">En hem, die <rhyme label="a" type="m" corresp="#s4:l1">sier</rhyme></l>
        <l id="s4:l5" met="5" type="-+">Door teekenen 's beests troon nog vaster <rhyme label="b" type="m" corresp="#s4:l2">maakt</rhyme>;</l>
        <l id="s4:l6" met="2" type="-+">Ay! wildze <rhyme label="c" type="f" corresp="#s4:l3">vaaten</rhyme>,</l>
        <l id="s4:l7" met="5" type="-+">En werpen in de gloey'nde <rhyme label="d" type="m">zulphur-brand</rhyme>,</l>
        <l id="s4:l8" met="5" type="-+">Vermaal haar rijk, verbriezel haaren <rhyme label="d" type="m" corresp="#s4:l7">band</rhyme>,</l>
        <l id="s4:l9" met="5" type="-+">Waar door zy doen en spreeken <rhyme label="d" type="m" corresp="#s4:l7">eender-hand</rhyme>,</l>
        <l id="s4:l10" met="1" type="-+"><rhyme label="e" type="m">Verleid</rhyme>,</l>
        <l id="s4:l11" met="1" type="+-">En <rhyme label="e" type="m" corresp="#s4:l10">vleid</rhyme></l>
        <l id="s4:l12" met="1" type="-+">Te <rhyme label="e" type="m" corresp="#s4:l10">beid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Och! grijp, Heer <rhyme label="a" type="m">och</rhyme>!</l>
        <l id="s5:l2" met="5" type="-+">Grijp, grijp, dien ouden looze kromme <rhyme label="b" type="m">draak</rhyme></l>
        <l id="s5:l3" met="2" type="-+">En <rhyme label="c" type="f">Menschen-moorder</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">En open <rhyme label="a" type="m" corresp="#s5:l1">toch</rhyme></l>
        <l id="s5:l5" met="5" type="-+">Met spoed de diep en grouwzaam' af-gronds <rhyme label="b" type="m" corresp="#s5:l2">kaak</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">En werp dien <rhyme label="c" type="f" corresp="#s5:l3">stoorder</rhyme></l>
        <l id="s5:l7" met="5" type="-+">Van vree daar in, den keeten om zijn <rhyme label="d" type="m">hals</rhyme>,</l>
        <l id="s5:l8" met="5" type="-+">Verzeegel hem, op dat hy noit te <rhyme label="d" type="m" corresp="#s5:l7">vals</rhyme></l>
        <l id="s5:l9" met="5" type="-+">Uw volk verlei, door zoo veel loos <rhyme label="d" type="m" corresp="#s5:l7">geschals</rhyme>;</l>
        <l id="s5:l10" met="1" type="-+">Maar <rhyme label="e" type="m">word</rhyme></l>
        <l id="s5:l11" met="1" type="+-">Heel <rhyme label="e" type="m" corresp="#s5:l10">kort</rhyme></l>
        <l id="s5:l12" met="1" type="-+">
          <rhyme label="e" type="m" corresp="#s5:l10">Geschort</rhyme>
        </l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Zoo dat uw <rhyme label="a" type="m">rijk</rhyme></l>
        <l id="s6:l2" met="5" type="-+">Gelijk de Zon door 't heerlijk <rhyme label="b" type="m">morgen-rood</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Eens mag <rhyme label="c" type="f">aan-daagen</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">En klaarlijk <rhyme label="a" type="m" corresp="#s6:l1">blijk</rhyme>,</l>
        <l id="s6:l5" met="5" type="-+">Hoe glory-rijk, hoe machtig en hoe <rhyme label="b" type="m" corresp="#s6:l2">groot</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Tot onz <rhyme label="c" type="f" corresp="#s6:l3">behaagen</rhyme>,</l>
        <l id="s6:l7" met="5" type="-+">Gy zijt, o Kooning vol van <rhyme label="d" type="m">wonderhe'en</rhyme>!</l>
        <l id="s6:l8" met="5" type="-+">Hoe Gy uw vyand kond tot gruis <rhyme label="d" type="m" corresp="#s6:l7">vertre'en</rhyme>,</l>
        <l id="s6:l9" met="5" type="-+">Schoon zijn gebied der dooven d' uwe <rhyme label="d" type="m" corresp="#s6:l7">scheen</rhyme>.</l>
        <l id="s6:l10" met="1" type="-+">Gy <rhyme label="e" type="m">wind</rhyme></l>
        <l id="s6:l11" met="1" type="+-">
          <rhyme label="e" type="m" corresp="#s6:l10">Verslind</rhyme>
        </l>
        <l id="s6:l12" met="1" type="-+"><rhyme label="e" type="m" corresp="#s6:l10">Geswind</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">In vollen <rhyme label="a" type="m">pracht</rhyme></l>
        <l id="s7:l2" met="5" type="-+">U in uw heil'gen op der aard te <rhyme label="b" type="m">zien</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Eens <rhyme label="c" type="f">triumpheeren</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Wordt in 't <rhyme label="a" type="m" corresp="#s7:l1">gedagt</rhyme></l>
        <l id="s7:l5" met="5" type="-+">Door ons van veeren al te moet <rhyme label="b" type="m" corresp="#s7:l2">gezien</rhyme>;</l>
        <l id="s7:l6" met="2" type="-+">All' onz <rhyme label="c" type="f" corresp="#s7:l3">begeeren</rhyme></l>
        <l id="s7:l7" met="5" type="-+">Van 't beest, die Hoer en 's Duivels <rhyme label="d" type="m">onder-gang</rhyme>,</l>
        <l id="s7:l8" met="5" type="-+">Is niet uit wraak-lust, maar uit groot <rhyme label="d" type="m" corresp="#s7:l7">verlang</rhyme></l>
        <l id="s7:l9" met="5" type="-+">Wijl daar aan hangd uw glorieus <rhyme label="d" type="m" corresp="#s7:l7">in-gang</rhyme>.</l>
        <l id="s7:l10" met="1" type="-+">Och <rhyme label="e" type="m">blust</rhyme></l>
        <l id="s7:l11" met="1" type="+-">En <rhyme label="e" type="m" corresp="#s7:l10">zust</rhyme></l>
        <l id="s7:l12" met="1" type="-+">Onz' <rhyme label="e" type="m" corresp="#s7:l10">lust</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Onz' herte <rhyme label="a" type="m">haakt</rhyme>,</l>
        <l id="s8:l2" met="5" type="-+">Door vuur'ge drift, om eens die gulden <rhyme label="b" type="m">tijd</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Daar volle <rhyme label="c" type="f">vreede</rhyme></l>
        <l id="s8:l4" met="2" type="-+">De vreugd <rhyme label="a" type="m" corresp="#s8:l1">volmaakt</rhyme>,</l>
        <l id="s8:l5" met="5" type="-+">Te moogen zien; hier word het door de <rhyme label="b" type="m" corresp="#s8:l2">nijd</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Schier al <rhyme label="c" type="f" corresp="#s8:l3">vertreeden</rhyme>,</l>
        <l id="s8:l7" met="5" type="-+">Maar daar zult Gy een wacht zijn om de <rhyme label="d" type="m">muur</rhyme>,</l>
        <l id="s8:l8" met="5" type="-+">Dat rou, nog leet, nog iets te geender <rhyme label="d" type="m" corresp="#s8:l7">uur</rhyme></l>
        <l id="s8:l9" met="5" type="-+">De vreugd verbreek, maar datze eeuwig <rhyme label="d" type="m" corresp="#s8:l7">duur</rhyme>:</l>
        <l id="s8:l10" met="1" type="-+">Uw <rhyme label="e" type="m">stut</rhyme></l>
        <l id="s8:l11" met="1" type="+-">Te <rhyme label="e" type="m" corresp="#s8:l10">nut</rhyme></l>
        <l id="s8:l12" met="1" type="-+">Haar <rhyme label="e" type="m" corresp="#s8:l10">schut</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Hier zugt de <rhyme label="a" type="m">Geest</rhyme></l>
        <l id="s9:l2" met="5" type="-+">Door 't angstig kruis en droevig teegen <rhyme label="b" type="m">he'en</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Te swaar om <rhyme label="c" type="f">draagen</rhyme>;</l>
        <l id="s9:l4" met="2" type="-+">Maar <rhyme label="a" type="m" corresp="#s9:l1">on-bevreezd</rhyme></l>
        <l id="s9:l5" met="5" type="-+">Verschijnt men daar, daar God al 't <rhyme label="b" type="m" corresp="#s9:l2">traan-geween</rhyme></l>
        <l id="s9:l6" met="2" type="-+">Wil zelfs <rhyme label="c" type="f" corresp="#s9:l3">af-vaagen</rhyme>;</l>
        <l id="s9:l7" met="5" type="-+">Daar Hy zijn heim'nis voor haar <rhyme label="d" type="m">open-zet</rhyme>,</l>
        <l id="s9:l8" met="5" type="-+">Haar doet verstaan het diepste van zijn <rhyme label="d" type="m" corresp="#s9:l7">wet</rhyme>,</l>
        <l id="s9:l9" met="5" type="-+">Daar geen dwaal-nevel Hem te zien <rhyme label="d" type="m" corresp="#s9:l7">belet</rhyme>;</l>
        <l id="s9:l10" met="1" type="-+">Maar <rhyme label="e" type="m">daar</rhyme></l>
        <l id="s9:l11" met="1" type="+-">m' Hem <rhyme label="e" type="m" corresp="#s9:l10">klaar</rhyme></l>
        <l id="s9:l12" met="1" type="-+">Werd <rhyme label="e" type="m" corresp="#s9:l10">waar</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Hier gruwd de <rhyme label="a" type="m">ziel</rhyme></l>
        <l id="s10:l2" met="5" type="-+">Der vroomen voor den stank des <rhyme label="b" type="m">modder-poels</rhyme></l>
        <l id="s10:l3" met="2" type="-+">Der vuile <rhyme label="c" type="f">zonden</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">En haar <rhyme label="a" type="m" corresp="#s10:l1">gekriel</rhyme>:</l>
        <l id="s10:l5" met="5" type="-+">Maar daar word van dat schuwelijk <rhyme label="b" type="m" corresp="#s10:l2">gewoel</rhyme></l>
        <l id="s10:l6" met="2" type="-+">Niet iets <rhyme label="c" type="f" corresp="#s10:l3">gevonden</rhyme>;</l>
        <l id="s10:l7" met="5" type="-+">Daar blinkt elk uit door het snee-wit <rhyme label="d" type="m">gewaad</rhyme></l>
        <l id="s10:l8" met="5" type="-+">Van zuiv're zijde en fijn <rhyme label="d" type="m" corresp="#s10:l7">linne-waat</rhyme>,</l>
        <l id="s10:l9" met="5" type="-+">Des heilgheids beminnaars pracht en <rhyme label="d" type="m" corresp="#s10:l7">staat</rhyme>;</l>
        <l id="s10:l10" met="1" type="-+">Want <rhyme label="e" type="m">kle'en</rhyme></l>
        <l id="s10:l11" met="1" type="+-">En <rhyme label="e" type="m" corresp="#s10:l10">ze'en</rhyme></l>
        <l id="s10:l12" met="1" type="-+">Zijn <rhyme label="e" type="m" corresp="#s10:l10">een</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Wat zaal'ge <rhyme label="a" type="m">staat</rhyme></l>
        <l id="s11:l2" met="5" type="-+">Op aard word oit door 's menschen brein <rhyme label="b" type="m">bedacht</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Als zoo te <rhyme label="c" type="f">leeven</rhyme>;</l>
        <l id="s11:l4" met="2" type="-+">En met der <rhyme label="a" type="m" corresp="#s11:l1">daad</rhyme></l>
        <l id="s11:l5" met="5" type="-+">Daar God zijn gunst sta'ig toond te zijn <rhyme label="b" type="m" corresp="#s11:l2">gebragt</rhyme></l>
        <l id="s11:l6" met="2" type="-+">Om hoog <rhyme label="c" type="f" corresp="#s11:l3">verheeven</rhyme>;</l>
        <l id="s11:l7" met="5" type="-+">Als Kooningen en Priesters d' <rhyme label="d" type="m">heerschappy</rhyme></l>
        <l id="s11:l8" met="5" type="-+">Des rijks te voeren, daar geen <rhyme label="d" type="m" corresp="#s11:l7">weer-party</rhyme></l>
        <l id="s11:l9" met="5" type="-+">Haar troon te schenden immer magtig <rhyme label="d" type="m" corresp="#s11:l7">zy</rhyme>.</l>
        <l id="s11:l10" met="1" type="-+">'t <rhyme label="e" type="m">Geveld</rhyme></l>
        <l id="s11:l11" met="1" type="+-">
          <rhyme label="e" type="m" corresp="#s11:l10">Geweld</rhyme>
        </l>
        <l id="s11:l12" met="1" type="-+">Noit <rhyme label="e" type="m" corresp="#s11:l10">queld</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Kom, Iesus! <rhyme label="a" type="m">kom</rhyme>,</l>
        <l id="s12:l2" met="5" type="-+">Iaa kom, en doe die over-zoeten <rhyme label="b" type="m">stand</rhyme></l>
        <l id="s12:l3" met="2" type="-+">Met vreugd <rhyme label="c" type="f">erlangen</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">Tot uwen <rhyme label="a" type="m" corresp="#s12:l1">ro'm</rhyme></l>
        <l id="s12:l5" met="5" type="-+">Aan haar, die noit voor 't hoofd of in de <rhyme label="b" type="m" corresp="#s12:l2">hand</rhyme></l>
        <l id="s12:l6" met="2" type="-+">'s Beests naam <rhyme label="c" type="f" corresp="#s12:l3">ontfangen</rhyme>:</l>
        <l id="s12:l7" met="5" type="-+">Maar trouw hier strijden voor uw waarde <rhyme label="d" type="m">eer</rhyme>;</l>
        <l id="s12:l8" met="5" type="-+">Wy vallen smeekend voor uw troon ter <rhyme label="d" type="m" corresp="#s12:l7">ne'er</rhyme>,</l>
        <l id="s12:l9" met="5" type="-+">Kom glorieus, jaa kom toch haastig <rhyme label="d" type="m" corresp="#s12:l7">Heer</rhyme>!</l>
        <l id="s12:l10" met="1" type="-+">'t <rhyme label="e" type="m">Verlang</rhyme></l>
