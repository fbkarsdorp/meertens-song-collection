    <melody>Het zou een fier Margrietelijn</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Maeckt my bequaem, O lieve <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Tot lof van uwer <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">My nu te schicken even <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Vwen wil recht te <rhyme label="b" type="f" corresp="#s1:l2">leeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En soo van mijner jonckheyt <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">My mach gheven tot <rhyme label="b" type="f">deuchde</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En schicken soo nae u <rhyme label="a" type="m" corresp="#s2:l1">vermaen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Mijn leven in mijn <rhyme label="b" type="f" corresp="#s2:l2">jeuchde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In dienstbaerheyt maeckt my <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Aen mijn Ouders met <rhyme label="b" type="f">vreesen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Haer te helpen in lief en <rhyme label="a" type="m" corresp="#s3:l1">leyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met ghehoorsamen <rhyme label="b" type="f" corresp="#s3:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Kindtlijcke liefde my doch <rhyme label="a" type="m">gheeft</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat ick die <rhyme label="b" type="f">sonderlinghen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Mach bewijsen aen haer <rhyme label="a" type="m" corresp="#s4:l1">beleeft</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die my voort deden <rhyme label="b" type="f" corresp="#s4:l2">dringhen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En dat mijn woorden moghen <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Vriendtlijck antwoordt te <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Met waerheyt en eerbiedingh <rhyme label="a" type="m" corresp="#s5:l1">fijn</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En ghehoorsamen <rhyme label="b" type="f" corresp="#s5:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Naer mijn voornemen wat ick <rhyme label="a" type="m">mach</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Haer oock te hulpe <rhyme label="b" type="f">comen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Met nootdrufte nacht ende <rhyme label="a" type="m" corresp="#s6:l1">dach</rhyme></l>
        <l id="s6:l4" met="3" type="-+">My schicken by de <rhyme label="b" type="f" corresp="#s6:l2">vromen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Soo oock ghehoorsaem zijn <rhyme label="a" type="m">altijdt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In wat u doet <rhyme label="b" type="f">behaghen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Naer u leere <rhyme label="a" type="m" corresp="#s7:l1">ghebenedijdt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Als sy my die <rhyme label="b" type="f" corresp="#s7:l2">voordraghen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Iae lieve Heer dit in my <rhyme label="a" type="m">werckt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Want ick ben cleyn van <rhyme label="b" type="f">crachten</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Door uwen Gheest my doch <rhyme label="a" type="m" corresp="#s8:l1">versterckt</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat ick’t wel mach <rhyme label="b" type="f" corresp="#s8:l2">betrachten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">[...] maeckt mijn hert hier <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Begaeft my uyt <rhyme label="b" type="f">ghenaden</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dat ick die daegh mijns levens <rhyme label="a" type="m" corresp="#s9:l1">soo</rhyme></l>
        <l id="s9:l4" met="3" type="-+">My gantsch wijslijck mach <rhyme label="b" type="f" corresp="#s9:l2">draghen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Toont my u goetheyt, lieve <rhyme label="a" type="m">Vaer</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En wilt my doch <rhyme label="b" type="f">versorghen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Wat uyt my worden sal hier <rhyme label="a" type="m" corresp="#s10:l1">naer</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat is my noch <rhyme label="b" type="f" corresp="#s10:l2">verborghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Slaet mijner gae, gantrsch en <rhyme label="a" type="m">ghehiel</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Beveel ick in u <rhyme label="b" type="f">handen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Mijnen gheest, t’Lichaem en mijn <rhyme label="a" type="m" corresp="#s11:l1">ziel</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Laet my niet gaen te <rhyme label="b" type="f" corresp="#s11:l2">schanden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
