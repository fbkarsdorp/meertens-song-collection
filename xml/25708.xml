  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Tot lof en prijs van Godes <rhyme label="a" type="m">Naem</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Laet ons een Liedt gaen <rhyme label="b" type="f">singhen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Van nutbaerlijcken <rhyme label="b" type="f" corresp="#s1:l2">dinghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Voor Godt begaeghlijck en <rhyme label="a" type="m" corresp="#s1:l1">bequaem</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die conscienty <rhyme label="c" type="m">vry</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Bereyden nu by <rhyme label="c" type="m" corresp="#s1:l5">ty</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ras vermijden der weerelt <rhyme label="a" type="m">lust</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wie uyt Godt is <rhyme label="b" type="f">gheboren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Verwintse nae <rhyme label="b" type="f" corresp="#s2:l2">t’behooren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Behaeghtse ons seer wel <rhyme label="a" type="m" corresp="#s2:l1">gherust</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Soo worden wy <rhyme label="c" type="m">ghemeyn</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gods vyanden <rhyme label="c" type="m" corresp="#s2:l5">onreyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ya wy moeten den fellen <rhyme label="a" type="m">doot</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ons nakende <rhyme label="b" type="f">bedincken</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die doet de lusten <rhyme label="b" type="f" corresp="#s3:l2">krincken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ghedincken wy der lester <rhyme label="a" type="m" corresp="#s3:l1">noot</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Die wreed en bitter <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wy wachten ons <rhyme label="c" type="m" corresp="#s3:l5">ghewis</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nu comen veel ghedachten <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wy moeten t’hert <rhyme label="b" type="f">behoeden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">D’ondeuchde te <rhyme label="b" type="f" corresp="#s4:l2">bevroeden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Niet laten gaen in onsen <rhyme label="a" type="m" corresp="#s4:l1">sin</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat niet bedincken <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wat niet en dient <rhyme label="c" type="m" corresp="#s4:l5">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Cloeck zijn hier altijdt int <rhyme label="a" type="m">ghebedt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat zijn oock Petri <rhyme label="b" type="f">reden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Eenmoedelijck met <rhyme label="b" type="f" corresp="#s5:l2">vreden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Wat twee eens worden hier op <rhyme label="a" type="m" corresp="#s5:l1">let</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Om bidden even // <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">T’sal haer ghegheven // <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Reyn vreese Gods oock hier toe <rhyme label="a" type="m">voeght</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wie tot Godsdienst wil <rhyme label="b" type="f">treden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dees’ drijft uyt quade <rhyme label="b" type="f" corresp="#s6:l2">zeden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maer wie sonder vrees blijft <rhyme label="a" type="m" corresp="#s6:l1">verhoeght</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Die en wort niet <rhyme label="c" type="m">gherecht</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Maer blijft der zonden <rhyme label="c" type="m" corresp="#s6:l5">knecht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ya wie voor den Heer sal <rhyme label="a" type="m">bestaen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die moet in desen <rhyme label="b" type="f">tijden</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Het quaet gheselschap <rhyme label="b" type="f" corresp="#s7:l2">mijden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Want wie het peck doet roeren <rhyme label="a" type="m" corresp="#s7:l1">aen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die wort daer me <rhyme label="c" type="m">bevleckt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Blijft vuyl en <rhyme label="c" type="m" corresp="#s7:l5">onperfeckt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Noch moetmen nu des Heeren <rhyme label="a" type="m">woordt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van herten gheerne <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Neerstich met open <rhyme label="b" type="f" corresp="#s8:l2">ooren</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Willen wy den bwegh vinden <rhyme label="a" type="m" corresp="#s8:l1">voort</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">T’is die spijs <rhyme label="c" type="m">menichfout</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Die t’leven <rhyme label="c" type="m" corresp="#s8:l5">onderhoudt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">En t’leven Christi moet <rhyme label="a" type="m">altijdt</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hier staen voor onse <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Wy wel betrachten <rhyme label="b" type="f" corresp="#s9:l2">moghen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Dat Christus sijne wonden <rhyme label="a" type="m" corresp="#s9:l1">wijt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Den sijnen <rhyme label="c" type="m">onghehoont</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Openbaer heeft <rhyme label="c" type="m" corresp="#s9:l5">vertoont</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Nemen wy dit in ons <rhyme label="a" type="m">ghemoedt</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Soo sullen wy ons <rhyme label="b" type="f">wachten</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Met wercken en <rhyme label="b" type="f" corresp="#s10:l2">ghedachten</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En een conscientie <rhyme label="a" type="m" corresp="#s10:l1">goet</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Hebben, ons sal daer <rhyme label="c" type="m">me</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Worden ghegheven <rhyme label="c" type="m" corresp="#s10:l5">vre</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
