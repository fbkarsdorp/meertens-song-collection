    <melody>Het was een boer uit Vlaanderland</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DAt is soo moy de Bruyt te <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De Bruygom sonder <rhyme label="b" type="f">falen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Maer hier is het Wiegh-toutjen <rhyme label="a" type="m" corresp="#s1:l1">fijn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt daer soetjens aen <rhyme label="b" type="f" corresp="#s1:l2">halen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wiegh soetjes met u <rhyme label="c" type="f">beyden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Iou Kindt sal noch niet <rhyme label="c" type="f" corresp="#s1:l5">schreyden</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Dit lieve paer, al binnent <rhyme label="d" type="m">Iaer</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Wensch ick de Bruygom <rhyme label="d" type="m" corresp="#s1:l7">Vaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo 't dan niet binnen 't Iaer en <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Waer sou het dan aen <rhyme label="b" type="f">scheelen</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Of Vader dan geen Man en <rhyme label="a" type="m" corresp="#s2:l1">is</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Of soudt aen Moeder <rhyme label="b" type="f" corresp="#s2:l2">feelen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Ick segh u met <rhyme label="c" type="f">verkloecken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ghy moet het <rhyme label="c" type="f" corresp="#s2:l5">ondersoecken</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Is Moer wat teer, Men vinter <rhyme label="d" type="m">meer</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Maer komt somtijts eens <rhyme label="d" type="m" corresp="#s2:l7">weer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een ander Iaer om dit <rhyme label="a" type="m">gery</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Als u Kindt is <rhyme label="b" type="f">geboren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En raeck jy dan jou kleur wat <rhyme label="a" type="m" corresp="#s3:l1">quijt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Geeft de moedt niet <rhyme label="b" type="f" corresp="#s3:l2">verloren</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Met Wiegen en met <rhyme label="c" type="f">singen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ons Kindt in slaep te <rhyme label="c" type="f" corresp="#s3:l5">bringen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">En Wieght aldus, En singht al <rhyme label="d" type="m">sus</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Hoe schreyt ons Kintje <rhyme label="d" type="m" corresp="#s3:l7">dus</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als ons Kindt dan niet swijgen <rhyme label="a" type="m">wil</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Soo wilt wat harder <rhyme label="b" type="f">Wiegen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Sus sus mijn kleyne Kintjen <rhyme label="a" type="m" corresp="#s4:l1">sus</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Of quellen u de <rhyme label="b" type="f" corresp="#s4:l2">Vliegen</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">Dan spreeckt Vaer met <rhyme label="c" type="f">benouwen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Och Wijf komt dit van <rhyme label="c" type="f" corresp="#s4:l5">Trouwen</rhyme>?</l>
        <l id="s4:l7" met="4" type="-+">Och lieve Man dit komter <rhyme label="d" type="m">van</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Wat raet soo gaet ons <rhyme label="d" type="m" corresp="#s4:l7">an</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och wist dit spel mijn Broertjen <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ick weet hy soudt hem <rhyme label="b" type="f">wachten</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Maer ick en derft hem seggen <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Hy sou noch met my <rhyme label="b" type="f" corresp="#s5:l2">lacchen</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Want hy soudt niet <rhyme label="c" type="f">gelooven</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hy magh het self <rhyme label="c" type="f" corresp="#s5:l5">beproeven</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Dan niemant siet, Gelooft het <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Voor hy is in 't <rhyme label="d" type="m" corresp="#s5:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer Wijf ick weet noch wel wat <rhyme label="a" type="m">raet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wy sullen de Wiegh wat <rhyme label="b" type="f">rollen</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Iae morgen als den dagh op <rhyme label="a" type="m" corresp="#s6:l1">gaet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Sullen wy 't Kindt Koken <rhyme label="b" type="f" corresp="#s6:l2">bollen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Een Papjen sonder <rhyme label="c" type="f">sneven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Sullen wy ons Kintjen <rhyme label="c" type="f" corresp="#s6:l5">geven</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Iou raet is goet, Iou Pap is <rhyme label="d" type="m">soet</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Morgen is 't Kintje <rhyme label="d" type="m" corresp="#s6:l7">vroet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hier mee soo is het Lietje <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Luystert toe sonder <rhyme label="b" type="f">schromen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">'t Is voor de Bruygom ende <rhyme label="a" type="m" corresp="#s7:l1">Bruyt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En die hier zijn <rhyme label="b" type="f" corresp="#s7:l2">gekomen</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Als Moer sit by den <rhyme label="c" type="f">viere</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Komt Vaer warmt Kint sijn <rhyme label="c" type="f" corresp="#s7:l5">luere</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">De Pappot hier, Een kan met <rhyme label="d" type="m">Bier</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Hebben sy geen <rhyme label="d" type="m" corresp="#s7:l7">pleysier</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
