    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Comt aldersoetste <rhyme label="a" type="f">Hymen</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Comt en bewoont dees opgetoyde <rhyme label="b" type="f">Salen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met boerten, singen, <rhyme label="a" type="f" corresp="#s1:l1">rijmen</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Wy dijnen lof uyt galmen en <rhyme label="b" type="f" corresp="#s1:l2">verhalen</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Comt salight <rhyme label="c" type="m">maer</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Dit blijde <rhyme label="c" type="m" corresp="#s1:l5">paer</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Die met gebogen <rhyme label="d" type="f">leden</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Voor u doen <rhyme label="e" type="f">branden</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Haer Heyl’ge <rhyme label="e" type="f" corresp="#s1:l8">offerhanden</rhyme>,</l>
        <l id="s1:l10" met="2" type="+-">En <rhyme label="d" type="f" corresp="#s1:l7">gebeden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Vertreckt onkuyssche <rhyme label="a" type="f">minne</rhyme>.</l>
        <l id="s2:l2" met="5" type="-+">Met uwe wulpsch en ongebonden <rhyme label="b" type="f">wetten</rhyme></l>
        <l id="s2:l3" met="3" type="-+">U valsch vergifsche <rhyme label="a" type="f" corresp="#s2:l1">pinne</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Geen vroom bedacht gemoet en kan <rhyme label="b" type="f" corresp="#s2:l2">besetten</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Alsins waer <rhyme label="c" type="m">rust</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Sijn gayle <rhyme label="c" type="m" corresp="#s2:l5">lust</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Sijn dwersche <rhyme label="d" type="f">sinnelijckheyden</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Sal hy sijn <rhyme label="e" type="f">vleugh’len</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Met redens vroede <rhyme label="e" type="f" corresp="#s2:l8">teugh’len</rhyme>,</l>
        <l id="s2:l10" met="2" type="+-">Wel <rhyme label="d" type="f" corresp="#s2:l7">beleyden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het hooghste heyl op <rhyme label="a" type="f">Aerden</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Kan ons een gelucksaligh Houwlijck <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wel hun die het <rhyme label="a" type="f" corresp="#s3:l1">aenvaerden</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">In Liefd’ en trou, met soberheyt <rhyme label="b" type="f" corresp="#s3:l2">beleven</rhyme></l>
        <l id="s3:l5" met="2" type="-+">En hoe ‘t God <rhyme label="c" type="m">voeght</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Alst wel <rhyme label="c" type="m" corresp="#s3:l5">vernoeght</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">In voor of <rhyme label="d" type="f">tegenspoeden</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Dien sal Godts <rhyme label="e" type="f">zegen</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Omchig’len al hun <rhyme label="e" type="f" corresp="#s3:l8">wegen</rhyme>,</l>
        <l id="s3:l10" met="2" type="+-">En <rhyme label="d" type="f" corresp="#s3:l7">behoeden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den opper-Heer der <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Bruyd’gom en Bruydt wil nimmer u <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">U g’luck end’ heyl <rhyme label="a" type="f" corresp="#s4:l1">vermeeren</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">In desen Staet tot saligheyt vol <rhyme label="b" type="f" corresp="#s4:l2">leven</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">En datmen <rhyme label="c" type="m">maer</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Mach binnen ‘t <rhyme label="c" type="m" corresp="#s4:l5">Jaer</rhyme></l>
        <l id="s4:l7" met="3" type="-+">U bloeysel sien <rhyme label="d" type="f">verjeugen</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Dat inet lief <rhyme label="e" type="f">koosen</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">U droefheydt sal <rhyme label="e" type="f" corresp="#s4:l8">verpoosen</rhyme>,</l>
        <l id="s4:l10" met="2" type="+-">En <rhyme label="d" type="f" corresp="#s4:l7">verheugen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
