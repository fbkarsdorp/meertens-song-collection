  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">T' Jericho <rhyme label="a" type="m">sat</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Eens eenen <rhyme label="b" type="m">Blinde-man</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Die aelmis <rhyme label="a" type="m" corresp="#s1:l1">bat</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En Jesus quam daer <rhyme label="b" type="m" corresp="#s1:l2">an</rhyme>;</l>
        <l id="s1:l5" met="2" type="-+">Als hy de <rhyme label="c" type="m">Schaer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die toen hem gingh <rhyme label="d" type="m">voorby</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Wierde <rhyme label="c" type="m" corresp="#s1:l5">gewaer</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wat is dat, vraeghde <rhyme label="d" type="m" corresp="#s1:l6">hy</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Sy seyden <rhyme label="a" type="m">het</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat Jesus daer <rhyme label="b" type="m">passeert</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Van <rhyme label="a" type="m" corresp="#s2:l1">Nasaret</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Dus riep hy met <rhyme label="b" type="m" corresp="#s2:l2">begeert'</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Ontferremt <rhyme label="c" type="m">u</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">O Iesu Davids <rhyme label="d" type="m">Soon</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Over mijn <rhyme label="c" type="m" corresp="#s2:l5">nu</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Uw goetheyt mijn <rhyme label="d" type="m" corresp="#s2:l6">betoon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Sommige <rhyme label="a" type="m">van</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De voorloopende <rhyme label="b" type="m">Schaer</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Seyden, stil <rhyme label="a" type="m" corresp="#s3:l1">man</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Houdt op van uw' <rhyme label="b" type="m" corresp="#s3:l2">misbaer</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Maer dies te <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Heeft hy om luyd <rhyme label="d" type="m">gekermt</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Iesu, o <rhyme label="c" type="m" corresp="#s3:l5">Heer</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">U mijnder togh <rhyme label="d" type="m" corresp="#s3:l6">ontfermt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Iesus stond <rhyme label="a" type="m">stil</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En seyd, brenght hem by <rhyme label="b" type="m">my</rhyme>.</l>
        <l id="s4:l3" met="2" type="-+">Den Meester <rhyme label="a" type="m" corresp="#s4:l1">wil</rhyme></l>
        <l id="s4:l4" met="3" type="-+">U hebben, seggen <rhyme label="b" type="m" corresp="#s4:l2">sy</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Weest nu te <rhyme label="c" type="m">vreed'</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Staet op, en nu wel <rhyme label="d" type="m">hoopt</rhyme>.</l>
        <l id="s4:l7" met="2" type="-+">Hy smakt sijn <rhyme label="c" type="m" corresp="#s4:l5">kleedt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En vlytigh tot hem <rhyme label="d" type="m" corresp="#s4:l6">loopt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Als hy quam <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Heer Iesus van hem <rhyme label="b" type="m">vraeght</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Wat is 't dat <rhyme label="a" type="m" corresp="#s5:l1">gy</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Begeert, waerom gy <rhyme label="b" type="m" corresp="#s5:l2">klaeght</rhyme>?</l>
        <l id="s5:l5" met="2" type="-+">Dat ik het <rhyme label="c" type="m">licht</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Magh sien, geeft hy <rhyme label="d" type="m">bescheyt</rhyme>.</l>
        <l id="s5:l7" met="2" type="-+">Doet op 't <rhyme label="c" type="m" corresp="#s5:l5">gesicht</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Heer Iesus tot hem <rhyme label="d" type="m" corresp="#s5:l6">seyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Uw geloof <rhyme label="a" type="m">geeft</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Aen u <rhyme label="b" type="m">gesondigheyt</rhyme>:</l>
        <l id="s6:l3" met="2" type="-+">En hy straks <rhyme label="a" type="m" corresp="#s6:l1">heeft</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Gesien met goet <rhyme label="b" type="m" corresp="#s6:l2">bescheyt</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">En volghden <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Al loovende den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Met luyder <rhyme label="c" type="m" corresp="#s6:l5">stem</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Gaf hy aen Godt de <rhyme label="d" type="m" corresp="#s6:l6">eer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Dus yder <rhyme label="a" type="m">een</rhyme></l>
        <l id="s7:l2" met="3" type="-+">U looft, o Jesu <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Van al het <rhyme label="a" type="m" corresp="#s7:l1">geen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Gy aen de menschen <rhyme label="b" type="m" corresp="#s7:l2">doet</rhyme>;</l>
        <l id="s7:l5" met="2" type="-+">Ons blind <rhyme label="c" type="m">gesicht</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Der sielen, bidden <rhyme label="d" type="m">wy</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Ook eens <rhyme label="c" type="m" corresp="#s7:l5">verlicht</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Dat wy u looven <rhyme label="d" type="m" corresp="#s7:l6">bly</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
