<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>163965</id>
    <date>
      <year-start>1700</year-start>
      <year-end>1700</year-end>
    </date>
    <tags/>
    <melody>In de min vind ik geneugten</melody>
  <author>Pieter de Vos</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ag wat ist een vreugdig <rhyme label="a" type="f">Leven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Daer men Mind en word <rhyme label="b" type="m">bemind</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'k Sou mijn staet niet willen <rhyme label="a" type="f" corresp="#s1:l1">geven</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Voor het beste Konings <rhyme label="b" type="m" corresp="#s1:l2">Kind</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Wijntje vreugd van 's Mensche <rhyme label="a" type="f">Leven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Door den Schepper eerst <rhyme label="b" type="m">geplant</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Kan mijn meerder vreugde <rhyme label="a" type="f" corresp="#s2:l1">geven</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Weg vryery aen een <rhyme label="b" type="m" corresp="#s2:l2">kant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wat kan Liefde al Liefde <rhyme label="a" type="f">baren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Als twee harten samen <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Uyt Liefden vereent te <rhyme label="a" type="f" corresp="#s3:l1">garen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Word de vreugt geruylt voor <rhyme label="b" type="m" corresp="#s3:l2">pijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Meysjes agter 't gat te <rhyme label="a" type="f">lopen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daer toe heb ik geen <rhyme label="b" type="m">geduld</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'k Drink liever de Wijn met <rhyme label="a" type="f" corresp="#s4:l1">stoopen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Men hangt niemand op om <rhyme label="b" type="m" corresp="#s4:l2">schuld</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Jsser grooter vreugt te <rhyme label="a" type="f">vinden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Jn het gantsche Werelds <rhyme label="b" type="m">rond</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Als datmen met zijn <rhyme label="a" type="f" corresp="#s5:l1">beminde</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Js omarmt en Mont aen <rhyme label="b" type="m" corresp="#s5:l2">Mont</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">De Mensch in droefheyd als <rhyme label="a" type="f">versonken</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">De Wijn verheugt hem het <rhyme label="b" type="m">gemoet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Wijntje Lief met smaek <rhyme label="a" type="f" corresp="#s6:l1">gedronken</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Doet hart long en lever <rhyme label="b" type="m" corresp="#s6:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">De Vrouw den Acker der <rhyme label="a" type="f">geslagten</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">'t Schoonste schepsel dat 'er <rhyme label="b" type="m">leefd</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Wil ik nut en waerder <rhyme label="a" type="f" corresp="#s7:l1">agten</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Als al 't geen de Wereld <rhyme label="b" type="m" corresp="#s7:l2">heeft</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Laet ons niet meer <rhyme label="a" type="f">disputeren</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Loop gy heen na 't Meysje <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Jk ga na de kroeg toe <rhyme label="a" type="f" corresp="#s8:l1">keeren</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">'k Ben die Malle praet al <rhyme label="b" type="m" corresp="#s8:l2">moe</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Loop maer heen gaet na jou <rhyme label="a" type="f">kroegen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Jk sal mijn in desen <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Daer ik in ben wel <rhyme label="a" type="f" corresp="#s9:l1">vernoegen</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Uyt den dronk spruyt alle <rhyme label="b" type="m" corresp="#s9:l2">quaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
