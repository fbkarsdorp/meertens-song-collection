  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">ICk word' <rhyme label="a" type="f">verslonden</rhyme></l>
        <l id="s1:l2" met="3" type="+-">JESU in uw <rhyme label="b" type="m">vier</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">O soete <rhyme label="a" type="f" corresp="#s1:l1">Wonden</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Vol pyn', en <rhyme label="b" type="m" corresp="#s1:l2">plaisier</rhyme>!</l>
        <l id="s1:l5" met="2" type="-+">Uw' lieve <rhyme label="c" type="f">schichten</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Vol van vier ô <rhyme label="d" type="m">Heer'</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Doen myn <rhyme label="c" type="f" corresp="#s1:l5">ghevrichten</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Branden meer en <rhyme label="d" type="m" corresp="#s1:l6">meer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Als ghy in <rhyme label="a" type="f">stilten</rhyme></l>
        <l id="s2:l2" met="3" type="+-">My komt spreken <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Doet ghy my <rhyme label="a" type="f" corresp="#s2:l1">smilten</rhyme></l>
        <l id="s2:l4" met="3" type="+-">In uw <rhyme label="b" type="m" corresp="#s2:l2">minne-vier</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">In uw' <rhyme label="c" type="f">presenti'</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Sterf ick van <rhyme label="d" type="m">ghenucht</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">In uw' <rhyme label="c" type="f" corresp="#s2:l5">absenti'</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Sterf ick van <rhyme label="d" type="m" corresp="#s2:l6">ghesucht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Siet my <rhyme label="a" type="f">besprenghelt</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Met een <rhyme label="b" type="m">traen-rivier</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Myn hert <rhyme label="a" type="f" corresp="#s3:l1">versenghelt</rhyme></l>
        <l id="s3:l4" met="3" type="+-">In uw <rhyme label="b" type="m" corresp="#s3:l2">Hemels-vier</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Myn tranen <rhyme label="c" type="f">vloeyen</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Mynen brandt die <rhyme label="d" type="m">gloeyt</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Myn vlammen <rhyme label="c" type="f" corresp="#s3:l5">groeyen</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Als sy zyn <rhyme label="d" type="m" corresp="#s3:l6">besproeyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Uw lieve <rhyme label="a" type="f">pynen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Die ghy my <rhyme label="b" type="m">aen-doet</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Die doen <rhyme label="a" type="f" corresp="#s4:l1">verdwynen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Myn door-wondt <rhyme label="b" type="m" corresp="#s4:l2">ghemoet</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Salft myne <rhyme label="c" type="f">smerten</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Maeckt my weêr <rhyme label="d" type="m">ghesont</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Gheneest myn <rhyme label="c" type="f" corresp="#s4:l5">herte</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Dat ghy hebt <rhyme label="d" type="m" corresp="#s4:l6">ghewont</rhyme>.</l>
      </lg>
    </lg>
  </text>
