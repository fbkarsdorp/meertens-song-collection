  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MEn seght dat Paris, Herder, <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Helena heeft <rhyme label="b" type="m">ontschaeckt</rhyme>.</l>
        <l id="s1:l3" met="4" type="+-">Maer ghy doet my wel verder <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die Herder ben <rhyme label="b" type="m" corresp="#s1:l2">gemaeckt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Als ick u kus die meerder <rhyme label="c" type="m">zijt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Dan oyt Helena mach, <rhyme label="d" type="m">ach</rhyme>!</l>
        <l id="s1:l7" met="4" type="-+">Roemt niet te veel, eer ick in <rhyme label="c" type="m" corresp="#s1:l5">spijt</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Van uwe kusjens <rhyme label="d" type="m" corresp="#s1:l6">lach</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die my de Mond versuren <rhyme label="a" type="m">maer</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">De kusjens <rhyme label="b" type="m">Herderin</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die sullen vreughdigh duren <rhyme label="a" type="m" corresp="#s2:l1">daer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waermens' ontfanght in <rhyme label="b" type="m" corresp="#s2:l2">min</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Wel aen ick wil de uwe <rhyme label="c" type="m">dan</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Gaen braecken uyt mijn keel, <rhyme label="d" type="m">heel</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">En spoelen dan, myn mond daer <rhyme label="c" type="m" corresp="#s2:l5">van</rhyme>.</l>
        <l id="s2:l8" met="3" type="+-">Wel tsa! nu weer een <rhyme label="d" type="m" corresp="#s2:l6">deel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gaet, Satyr kust u koeyen <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En laet my Maeghet <rhyme label="b" type="m">staen</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Ho! ho! ghy wilt gaen schoeyen <rhyme label="a" type="m" corresp="#s3:l1">heen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghy moeter bet noch <rhyme label="b" type="m" corresp="#s3:l2">aen</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Denckt dat u jeughd en frisse <rhyme label="c" type="m">Lent</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Vergaen sal als een roock <rhyme label="d" type="m">smoock</rhyme>.</l>
        <l id="s3:l7" met="4" type="-+">De drooghe druyf wort goedt <rhyme label="c" type="m" corresp="#s3:l5">gekent</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">En dorre roosen <rhyme label="d" type="m" corresp="#s3:l6">oock</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ay! naedert Harderinne <rhyme label="a" type="m">nu</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En hoort een woort in <rhyme label="b" type="m">d'oor</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Ick ben van uwe minne <rhyme label="a" type="m" corresp="#s4:l1">schu</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En daerom loop ick <rhyme label="b" type="m" corresp="#s4:l2">voor</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Staet stil, en hoort een deuntjen <rhyme label="c" type="m">dan</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Die'k op myn ruys-pijp speel, <rhyme label="d" type="m">eel</rhyme>.</l>
        <l id="s4:l7" met="4" type="-+">Ay speelt en springht, ick weter <rhyme label="c" type="m" corresp="#s4:l5">van</rhyme></l>
        <l id="s4:l8" met="3" type="+-">En laet de vreughd u <rhyme label="d" type="m" corresp="#s4:l6">heel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
