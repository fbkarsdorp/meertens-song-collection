<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11877</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Treed rasjes mijn voetjes</melody>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">VVAt Godlijcker <rhyme label="a" type="f">straelen</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">In 't herte <rhyme label="a" type="f" corresp="#s1:l1">dalen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Vyt 's Hemels <rhyme label="a" type="f" corresp="#s1:l1">saelen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als van sijn goed, Dat yder <rhyme label="b" type="m">voedt</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Vervrolijckt 't <rhyme label="b" type="m" corresp="#s1:l4">gemoed</rhyme>?</l>
        <l id="s1:l6" met="3" type="-+">Als wy verbaest <rhyme label="c" type="m">aensien</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Wat deughde hy ons aen komt <rhyme label="c" type="m" corresp="#s1:l6">bien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Gods gonstige <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Vol van <rhyme label="a" type="f" corresp="#s2:l1">vermogen</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Wel klaer <rhyme label="a" type="f" corresp="#s2:l1">betogen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Van sijn genae, die vroegh en <rhyme label="b" type="m">spae</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Ons herten soo <rhyme label="b" type="m" corresp="#s2:l4">drae</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ontvonckt door eene <rhyme label="c" type="m">brand</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Die glorijt in ziel en <rhyme label="c" type="m" corresp="#s2:l6">verstand</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Wie sou niet <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Met hert en <rhyme label="a" type="f" corresp="#s3:l1">sinnen</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">En sien van <rhyme label="a" type="f" corresp="#s3:l1">binnen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Op desen Heer? die tot ons <rhyme label="b" type="m">leer</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Sijn gaven send <rhyme label="b" type="m" corresp="#s3:l4">neer</rhyme>?</l>
        <l id="s3:l6" met="3" type="-+">En weckt ons doffe <rhyme label="c" type="m">ziel</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Tot vreughde die u Heer! <rhyme label="c" type="m" corresp="#s3:l6">beviel</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Want als ons <rhyme label="a" type="f">gedachten</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Nae 't Hemels <rhyme label="a" type="f" corresp="#s4:l1">trachten</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">En 't aerdsch <rhyme label="a" type="f" corresp="#s4:l1">verachten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als 't geen vergaet, en ons <rhyme label="b" type="m">verlaet</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Daer 't eeuwigh <rhyme label="b" type="m" corresp="#s4:l4">bestaet</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Soo sal dat eel <rhyme label="c" type="m">gemoed</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">God dancken voor dit groote <rhyme label="c" type="m" corresp="#s4:l6">goed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Wie dan Godes <rhyme label="a" type="f">zeegen</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Hier heeft <rhyme label="a" type="f" corresp="#s5:l1">verkregen</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Sal 't aller <rhyme label="a" type="f" corresp="#s5:l1">wegen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">God singen lof, voor huys en <rhyme label="b" type="m">hof</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">En nemen hier <rhyme label="b" type="m" corresp="#s5:l4">stof</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat hy door 't aerdsche <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Nae 't Hemels, dat hem God <rhyme label="c" type="m" corresp="#s5:l6">aenbiet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
