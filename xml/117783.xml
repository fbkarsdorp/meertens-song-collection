    <melody>Point de chagrin dans notre vie</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Vrienden zou men geen Vreugd <rhyme label="a" type="f">bedryven</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Kermis ko ho ho ho omt maar eens in 't <rhyme label="b" type="m">Jaar</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hebje geen Geld Jan Oom geeft <rhyme label="a" type="f" corresp="#s1:l1">Schyven</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Brengt hem maar Pand hy zal u <rhyme label="b" type="m" corresp="#s1:l2">daar</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Voor na u zin ter deeg gery hy hy <rhyme label="a" type="f" corresp="#s1:l1">hyhyven</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Dan kunt gy Smullen of 't Kermis <rhyme label="b" type="m" corresp="#s1:l2">waar</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Men ziet hier komen veel <rhyme label="a" type="f">Kermis-Gasten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Al om te ne he he he men haar <rhyme label="b" type="m">Plyzier</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Yder die komt zyn Beurs <rhyme label="a" type="f" corresp="#s2:l1">ontlasten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En om te drinken Wyn en <rhyme label="b" type="m" corresp="#s2:l2">Bier</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Al zou de Buyk daar na weer ba ha ha ha ha <rhyme label="a" type="f" corresp="#s2:l1">rsten</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Of was de Keel gehangen <rhyme label="b" type="m" corresp="#s2:l2">schier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Men ziet de Meysjes lustig <rhyme label="a" type="f">zwieren</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Met een Gala ha ha ha ntje aan haar <rhyme label="b" type="m">zy</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Yder die wil de Kermis <rhyme label="a" type="f" corresp="#s3:l1">vieren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Strelen en Kwelen met zoet <rhyme label="b" type="m" corresp="#s3:l2">gevly</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Als Kermis-poppen en Venus di hi hi hi hi <rhyme label="a" type="f" corresp="#s3:l1">ren</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Treden zy Vrolyk ende <rhyme label="b" type="m" corresp="#s3:l2">bly</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als dan zo gane zy te <rhyme label="a" type="f">zamen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Na al de Spullen op't Leyhy hy hy <rhyme label="b" type="m">dze-plyn</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En dan eens in de Broedertjes <rhyme label="a" type="f" corresp="#s4:l1">Kramen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Vullen haar Buyk agter 't <rhyme label="b" type="m" corresp="#s4:l2">Gordyn</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Joelen en Zoenen dan zonder scha ha ha ha ha <rhyme label="a" type="f" corresp="#s4:l1">men</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">Kermis moet 'er gehouden <rhyme label="b" type="m" corresp="#s4:l2">zyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Men hoord dan roepen de <rhyme label="a" type="f">san-pottagie</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Za lustig Vrinden hier is no hohohog <rhyme label="b" type="m">plaats</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hy maakt veel grillen op zyn <rhyme label="a" type="f" corresp="#s5:l1">Stellagie</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Zyn Bakhuys gaat als een telder zyn <rhyme label="b" type="m" corresp="#s5:l2">naars</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Komt Jonge-luytjes met goe coura ha ha ha ha <rhyme label="a" type="f" corresp="#s5:l1">gie</rhyme>:</l>
        <l id="s5:l6" met="4" type="-+">t' Avond zo spelen wy by de <rhyme label="b" type="m" corresp="#s5:l2">Kaars</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dan gaan zy door de Kramen <rhyme label="a" type="f">lopen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Yder die roept hoord hier, hoord <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wilje jou Liefste geen Kermis <rhyme label="a" type="f" corresp="#s6:l1">kopen</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Zoekt 'er wat uyt na u <rhyme label="b" type="m" corresp="#s6:l2">Plyzier</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Watje begeerd het is 'er met ho ho ho ho <rhyme label="a" type="f" corresp="#s6:l1">pen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Yder die neemt een <rhyme label="b" type="m" corresp="#s6:l2">Kermis-zwier</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dan gaat men weêr een Glaasje <rhyme label="a" type="f">drinken</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Al van het edele Bacchus <rhyme label="b" type="m">Nat</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Men hoord de Kannen en Glazen <rhyme label="a" type="f" corresp="#s7:l1">klinken</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">t' Za Waard wilt tappen uyt 't beste <rhyme label="b" type="m" corresp="#s7:l2">Vat</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Al zou het ons de Keel uyt sti hi hi hi <rhyme label="a" type="f" corresp="#s7:l1">nken</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Kermis moet men dog houden <rhyme label="b" type="m" corresp="#s7:l2">wat</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Raken d' Meysjes dan <rhyme label="a" type="f">beschonken</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Krygen zy Bacchus Nat in 't <rhyme label="b" type="m">Hoofd</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Haar Oogjes dan zo Minnelyk <rhyme label="a" type="f" corresp="#s8:l1">lonken</rhyme>;</l>
        <l id="s8:l4" met="4" type="-+">Cupido heeft haar Bryn <rhyme label="b" type="m" corresp="#s8:l2">geklooft</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Venus die blaast vol Minne vo ho ho ho <rhyme label="a" type="f" corresp="#s8:l1">nken</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Dan word 'er menig Bloem <rhyme label="b" type="m" corresp="#s8:l2">gerooft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Door Venus Schigten en Cupido's <rhyme label="a" type="f">treken</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Raakt 'er zo menig Maget in 't <rhyme label="b" type="m">Net</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Na het verloop van Maanden en <rhyme label="a" type="f" corresp="#s9:l1">Weken</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dan zo hoord men de allarm <rhyme label="b" type="m" corresp="#s9:l2">Trompet</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Dan komt de Kermis Vreugd opbre he he he he <rhyme label="a" type="f" corresp="#s9:l1">ken</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Daar zy van Groejen en worden niet <rhyme label="b" type="m" corresp="#s9:l2">vet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Men ziet de Venus-Nimphjes <rhyme label="a" type="f">zwieren</rhyme>.</l>
        <l id="s10:l2" met="4" type="-+">Met een Oostindies-Vaar op <rhyme label="b" type="m">zy</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Lonken en Pronken met goê <rhyme label="a" type="f" corresp="#s10:l1">manieren</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Bolletje slaapt te Nagt by <rhyme label="b" type="m" corresp="#s10:l2">my</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Strelen en Quelen en veel Plyzie hi hi hi hi <rhyme label="a" type="f" corresp="#s10:l1">ren</rhyme>:</l>
        <l id="s10:l6" met="4" type="-+">Als 't Geld is op, zyn zy in de <rhyme label="b" type="m" corresp="#s10:l2">Ly</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Zo word de Kermis tyd <rhyme label="a" type="f">versleten</rhyme>.</l>
        <l id="s11:l2" met="4" type="-+">Zingen en Springen en Vro ho ho ho ho lyk <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Vreugdig te leven en Bouten te <rhyme label="a" type="f" corresp="#s11:l1">eeten</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">'t Keel-gat te Smeeren met Bier en <rhyme label="b" type="m" corresp="#s11:l2">Wyn</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Tot dat de Beurs is plat wilt we he he he he <rhyme label="a" type="f" corresp="#s11:l1">ten</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Dan word de Vreugd verruyld voor <rhyme label="b" type="m" corresp="#s11:l2">Pyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
