  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Aenhoort een liet voor <rhyme label="a" type="f">wonders</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Het is al wat <rhyme label="a" type="f" corresp="#s1:l1">bysonders</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dat ick verhalen <rhyme label="b" type="m">sal</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Het is van een <rhyme label="c" type="f">ghevanghen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die vry was in <rhyme label="c" type="f" corresp="#s1:l4">bedwanghen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En bly in ‘t <rhyme label="b" type="m" corresp="#s1:l3">ongheval</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Den vanger die hem <rhyme label="a" type="f">leyde</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En den kercker <rhyme label="a" type="f" corresp="#s2:l1">bereyde</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Lach selfs ghebonden <rhyme label="b" type="m">vast</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Hy klaeghd’ over zijn <rhyme label="c" type="f">banden</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Nochtans geen menschen <rhyme label="c" type="f" corresp="#s2:l4">handen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Deden hem <rhyme label="b" type="m" corresp="#s2:l3">overlast</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den vanger was seer <rhyme label="a" type="f">druckich</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En hy sach aen <rhyme label="a" type="f" corresp="#s3:l1">gheluckich</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dien hy ghebonden <rhyme label="b" type="m">hiel</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">En om zijn eyghen <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Met vreesen en met <rhyme label="c" type="f" corresp="#s3:l4">beven</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Hy hem te voete <rhyme label="b" type="m" corresp="#s3:l3">viel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">‘t Schijnt wel een <rhyme label="a" type="f">rasernye</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat die daer was een <rhyme label="a" type="f" corresp="#s4:l1">vrye</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sijn vrydom noch <rhyme label="b" type="m">versocht</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Van een die hy <rhyme label="c" type="f">ghebonden</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Had, en seer vast <rhyme label="c" type="f" corresp="#s4:l4">bewonden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En in de hecht <rhyme label="b" type="m" corresp="#s4:l3">ghebrocht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dit zijn Gods wonder <rhyme label="a" type="f">wercken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Waer by men can <rhyme label="a" type="f" corresp="#s5:l1">bemercken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">‘t Is niet altijt soo ‘t <rhyme label="b" type="m">schijnt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">De vrye zijn <rhyme label="c" type="f">ghevanghen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En die daer zijn in <rhyme label="c" type="f" corresp="#s5:l4">dwanghen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die leven <rhyme label="b" type="m" corresp="#s5:l3">onghepijnt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Knechten sitten te <rhyme label="a" type="f">peerde</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En Vorsten, hooch van <rhyme label="a" type="f" corresp="#s6:l1">weerde</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Gaen neffens haer te <rhyme label="b" type="m">voet</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Volheyt hebben de <rhyme label="c" type="f">armen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">De rijcke, vol van <rhyme label="c" type="f" corresp="#s6:l4">karmen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Hebben ghebreck aen <rhyme label="b" type="m" corresp="#s6:l3">goet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Blint zijn dickwils de <rhyme label="a" type="f">siende</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En die men somtijts <rhyme label="a" type="f" corresp="#s7:l1">miende</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Onnoosel, blint, en <rhyme label="b" type="m">slecht</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hebben ghesicht vol <rhyme label="c" type="f">klaerheyt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En Gods verborgen <rhyme label="c" type="f" corresp="#s7:l4">waerheyt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">In een ghemoet <rhyme label="b" type="m" corresp="#s7:l3">oprecht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">d’Apostels, als <rhyme label="a" type="f">verleyders</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die werden van de <rhyme label="a" type="f" corresp="#s8:l1">weyders</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Des volcks vervolght, <rhyme label="b" type="m">ghehaet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Geen wyse, noch <rhyme label="c" type="f">gheleerde</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Aen Iesum en <rhyme label="c" type="f" corresp="#s8:l4">bekeerde</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Maer hebben hem <rhyme label="b" type="m" corresp="#s8:l3">versmaet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wijsheyt is dickwils <rhyme label="a" type="f">sotheydt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Voor d’ooghen van de <rhyme label="a" type="f" corresp="#s9:l1">Godtheydt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">All’ dinck anders <rhyme label="b" type="m">bestaet</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">De waerheyt is <rhyme label="c" type="f">inwendich</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">De leugen seer <rhyme label="c" type="f" corresp="#s9:l4">ellendich</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Na ‘smenschen oordeel <rhyme label="b" type="m" corresp="#s9:l3">gaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
