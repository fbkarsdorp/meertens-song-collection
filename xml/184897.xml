<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184897</id>
    <date>
      <year-start>1740</year-start>
      <year-end>1740</year-end>
    </date>
    <location>
      <orginal-name>leuven</orginal-name>
      <standard-name>Leuven, Belgium</standard-name>
      <coordinates>
        <lon>50.879202</lon>
        <lat>4.7011675</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Quand un coeur s'engage</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">GY, die in dit <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Den breeden wegh <rhyme label="b" type="m">kiest</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Let, wat gy <rhyme label="b" type="m" corresp="#s1:l2">verliest</rhyme>;</l>
        <l id="s1:l4" met="2" type="-+">Wat eynd' hy sal <rhyme label="a" type="f" corresp="#s1:l1">geven</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Ah! hoe bitter <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Uyt wereldts <rhyme label="c" type="m" corresp="#s1:l5">geluck</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Hy schynt vol <rhyme label="a" type="f">verblyden</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Met bloemen <rhyme label="b" type="m">verciert</rhyme>:</l>
        <l id="s2:l3" met="2" type="-+">Maer daer hy u <rhyme label="b" type="m" corresp="#s2:l2">stiert</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Gy doornen sult <rhyme label="a" type="f" corresp="#s2:l1">lyden</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Ah! hoe bitter <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Uyt wereldts <rhyme label="c" type="m" corresp="#s2:l5">geluck</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Hoe meer u komt <rhyme label="a" type="f">trecken</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Syn glans, en <rhyme label="b" type="m">genucht</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Hoe hy droever <rhyme label="b" type="m" corresp="#s3:l2">sucht</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Hier naer wilt <rhyme label="a" type="f" corresp="#s3:l1">verwecken</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Ah! hoe bitter <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Uyt wereldts <rhyme label="c" type="m" corresp="#s3:l5">geluck</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Men siet wel van <rhyme label="a" type="f">buyten</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Geen schroom van syn <rhyme label="b" type="m">quaedt</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Maer syn valsch <rhyme label="b" type="m" corresp="#s4:l2">gelaet</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Wilt d'Hemelen <rhyme label="a" type="f" corresp="#s4:l1">sluyten</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Ah! hoe bitter <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Uyt wereldts <rhyme label="c" type="m" corresp="#s4:l5">geluck</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Al, die maer en <rhyme label="a" type="f">setten</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Den voet op dees <rhyme label="b" type="m">baen</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Willen <rhyme label="b" type="m" corresp="#s5:l2">onderstaen</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Haer streelende <rhyme label="a" type="f" corresp="#s5:l1">wetten</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Ah! hoe bitter <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Uyt wereldts <rhyme label="c" type="m" corresp="#s5:l5">geluck</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Dees' wegh sal u <rhyme label="a" type="f">dryven</rhyme></l>
        <l id="s6:l2" met="2" type="-+">By t'Helsche <rhyme label="b" type="m">gespuys</rhyme>:</l>
        <l id="s6:l3" met="2" type="-+">Kiest den wegh van't <rhyme label="b" type="m" corresp="#s6:l2">Kruys</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Met Godt sult gy <rhyme label="a" type="f" corresp="#s6:l1">blyven</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Ah! hoe bitter <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Uyt wereldts <rhyme label="c" type="m" corresp="#s6:l5">geluck</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
