<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24538</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="klaaglied" translation="lamentation">klaaglied</tag>
    </tags>
    <melody>Ik draag dat lijden verborgen</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ic drage dat liden <rhyme label="a" type="f">verborgen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">beslaten in mynen <rhyme label="b" type="m">gront</rhyme></l>
        <l id="s1:l3" met="3" type="-+">vanden auent totten <rhyme label="a" type="f" corresp="#s1:l1">morgen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">werde ic daer af <rhyme label="b" type="m" corresp="#s1:l2">gewont</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ic byn alleyn int <rhyme label="a" type="f">liden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Och lacie ic byn <rhyme label="b" type="m">alleyn</rhyme></l>
        <l id="s2:l3" met="3" type="-+">hoe soldick my <rhyme label="a" type="f" corresp="#s2:l1">verblyden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">der trouwen en vyndic <rhyme label="b" type="m" corresp="#s2:l2">geen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Daer comet soe mennych <rhyme label="a" type="f">suchten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">al wt myns hertsen <rhyme label="b" type="m">gront</rhyme></l>
        <l id="s3:l3" met="3" type="-+">mocht ic des lidens <rhyme label="a" type="f" corresp="#s3:l1">vluchten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">ic dedet in corter <rhyme label="b" type="m" corresp="#s3:l2">stont</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Nv ist aldus <rhyme label="a" type="f">gelegen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">ten mach niet anders <rhyme label="b" type="m">syn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">men willes my niet <rhyme label="a" type="f" corresp="#s4:l1">verdragen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">dus blyuet die sorge <rhyme label="b" type="m" corresp="#s4:l2">myn</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Och wie mach icket bet <rhyme label="a" type="f">clagen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">dan die den troest <rhyme label="b" type="m">verleent</rhyme></l>
        <l id="s5:l3" met="3" type="-+">hi wilt my helpen <rhyme label="a" type="f" corresp="#s5:l1">dragen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">tys also trouwen <rhyme label="b" type="m" corresp="#s5:l2">vrent</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick wil in hem <rhyme label="a" type="f">verblyden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">ende hapen tot alre <rhyme label="b" type="m">tyt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">dat hi my voer dit <rhyme label="a" type="f" corresp="#s6:l1">liden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">sal geuen u groet <rhyme label="b" type="m" corresp="#s6:l2">jolyt</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die troester van hier <rhyme label="a" type="f">bauen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">die alle herten <rhyme label="b" type="m">kent</rhyme></l>
        <l id="s7:l3" met="3" type="-+">die wille my altoes <rhyme label="a" type="f" corresp="#s7:l1">lauen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">als hi ons liden toe <rhyme label="b" type="m" corresp="#s7:l2">sent</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hy heeft die perse <rhyme label="a" type="f">getreden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">al om die mynne van <rhyme label="b" type="m">my</rhyme></l>
        <l id="s8:l3" met="3" type="-+">ick salt hem weder <rhyme label="a" type="f" corresp="#s8:l1">gelden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">soe voel alst in my <rhyme label="b" type="m" corresp="#s8:l2">sy</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hoe voele du kanste <rhyme label="a" type="f">gerapen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">al wt den liden <rhyme label="b" type="m">myn</rhyme></l>
        <l id="s9:l3" met="3" type="-+">dat geue ic di te <rhyme label="a" type="f" corresp="#s9:l1">baten</rhyme></l>
        <l id="s9:l4" met="3" type="-+">tmoet al geleden <rhyme label="b" type="m" corresp="#s9:l2">syn</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
