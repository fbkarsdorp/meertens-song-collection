  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NV siet hoe fijn end Lief'lijck <rhyme label="a" type="m">ist</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Recht Broederlijck te <rhyme label="b" type="f">Leven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Tot eenicheyt in Jesu <rhyme label="a" type="m" corresp="#s1:l1">Christ</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van Herten hem <rhyme label="b" type="f" corresp="#s1:l2">begheven</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Want Eenderley ghesinnet <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Doet d'Een den And'ren <rhyme label="d" type="f">Bouwen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">End hem selffs Matich houden <rhyme label="c" type="m" corresp="#s1:l5">fijn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Daer mach de Lieffde <rhyme label="d" type="f" corresp="#s1:l6">Trouwen</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">End voor gheen Valscheyt <rhyme label="d" type="f" corresp="#s1:l6">grouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">So Cost'lijck en mocht niet <rhyme label="a" type="m">gezijn</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die Balsem Zalve <rhyme label="b" type="f">meede</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die van t Hooft Arons vloeyde <rhyme label="a" type="m" corresp="#s2:l1">fijn</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In synen Baert end <rhyme label="b" type="f" corresp="#s2:l2">Cleede</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Als Costlijck is <rhyme label="c" type="m">Eendrachticheyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Der Christenheyt vol <rhyme label="d" type="f">Eere</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">In s'HEEren Woort so wel <rhyme label="c" type="m" corresp="#s2:l5">bereydt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Eendrachticheydt al <rhyme label="d" type="f" corresp="#s2:l6">meere</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Behaghet Godt den <rhyme label="d" type="f" corresp="#s2:l6">HEERE</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den Dauwe van den Berch <rhyme label="a" type="m">Hermon</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Mach so ghewenscht niet <rhyme label="b" type="f">comen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Op den Berch dorstich van <rhyme label="a" type="m" corresp="#s3:l1">Zyon</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot Laeffenis der <rhyme label="b" type="f" corresp="#s3:l2">Vromen</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Als Costlijck is des Gheestes <rhyme label="c" type="m">Cracht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die wercket sulck <rhyme label="d" type="f">Eendrachte</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">By Godes Volck van Gheeste <rhyme label="c" type="m" corresp="#s3:l5">saecht</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dat syn Woort houd' in <rhyme label="d" type="f" corresp="#s3:l6">Achte</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">End syn Ghenaed' <rhyme label="d" type="f" corresp="#s3:l6">verwachte</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want daer wil selffs de milde <rhyme label="a" type="m">Godt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Syn Seegen heyrschen <rhyme label="b" type="f">laten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Met Troost end Hulp in Aller <rhyme label="a" type="m" corresp="#s4:l1">Noot</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ons comen all' te <rhyme label="b" type="f" corresp="#s4:l2">Baten</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Belovende daer toe noch <rhyme label="c" type="m">mee</rhyme></l>
        <l id="s4:l6" met="3" type="-+">In dees' Elend' te <rhyme label="d" type="f">gheven</rhyme></l>
        <l id="s4:l7" met="4" type="-+">In desen Leven Rust end <rhyme label="c" type="m" corresp="#s4:l5">Vreed'</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En daer nae d'Eewich <rhyme label="d" type="f" corresp="#s4:l6">Leven</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Door JEsum Christum <rhyme label="d" type="f" corresp="#s4:l6">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
