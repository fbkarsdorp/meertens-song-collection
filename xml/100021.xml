    <melody>Phoebus is lang over de zee</melody>
  <author>Arnold Bon</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">'t NOotlot dwingt al 't levens <rhyme label="a" type="m">lust</rhyme></l>
        <l id="s1:l2" met="4" type="-+">En vorst de zinnen duysent <rhyme label="b" type="f">sugjes</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'t Oogh verblickt en geeft geen <rhyme label="a" type="m" corresp="#s1:l1">rust</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Des nachts zijn droomtjes duysent <rhyme label="b" type="f" corresp="#s1:l2">klugjes</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Maer als 't Hert het oogh hout <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Daer de Liefd' hem dwingt te <rhyme label="c" type="m" corresp="#s1:l5">gaen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dan moetmer immers <rhyme label="c" type="m" corresp="#s1:l5">aen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ach hoe schravelt dan de <rhyme label="a" type="m">Min</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Om Op-rust  zijn leen te <rhyme label="b" type="f">steunen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Bid en smeeckt krijgt geen <rhyme label="a" type="m" corresp="#s2:l1">gewin</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Voor zijn droevigh angstig <rhyme label="b" type="f" corresp="#s2:l2">kreunen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Maer de Moeder <rhyme label="c" type="m">Citharee</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Maeckt de hertjes bey soo <rhyme label="c" type="m" corresp="#s2:l5">dwee</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat Ia haer trouwen <rhyme label="c" type="m" corresp="#s2:l5">dee</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gespeeltjes die noch Vrijsters <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Denckt als u een Vryer komt <rhyme label="b" type="f">vryen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat hy is u <rhyme label="a" type="m" corresp="#s3:l1">toe-gewijdt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">'t Schoot-lot moet doch 'tNoot-lot <rhyme label="b" type="f" corresp="#s3:l2">lyen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Als hy komt met deughdens <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Hout dit seker voor een <rhyme label="c" type="m" corresp="#s3:l5">leer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Eens wegh en komt niet <rhyme label="c" type="m" corresp="#s3:l5">weer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
