  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ga ‘swerelts minnaers <rhyme label="a" type="m">vliet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijn liefde kent ghy <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick singh mijn Bruyd’gom een reyn <rhyme label="a" type="m" corresp="#s1:l1">Liedt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die my vondt langhe eer ick hem <rhyme label="b" type="m">vandt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Om dat sijn liefde in my <rhyme label="b" type="m" corresp="#s1:l4">brand</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waer siet ghy schoonste <rhyme label="a" type="m">om</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Naer u, treckt my ick <rhyme label="a" type="m" corresp="#s2:l1">kom</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Waer zijt ghy vrient mijn <rhyme label="a" type="m" corresp="#s2:l1">Bruyd’gom</rhyme>?</l>
        <l id="s2:l4" met="4" type="-+">En segget die mijn ziele <rhyme label="b" type="m">belust</rhyme></l>
        <l id="s2:l5" met="4" type="-+">waer dat ghy inde middagh <rhyme label="b" type="m" corresp="#s2:l4">rust</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Suster Bruydt ghy zijt <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Lieflijck is u <rhyme label="a" type="m" corresp="#s3:l1">aenschijn</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Gelijck de duyven oogen <rhyme label="a" type="m" corresp="#s3:l1">zijn</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Een Lelie onder der doornen <rhyme label="b" type="m">dwanck</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Is sy die ick mijn leven <rhyme label="b" type="m" corresp="#s3:l4">schanck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Een troost woordt van mijn <rhyme label="a" type="m">vriendt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Is my een duysent <rhyme label="a" type="m" corresp="#s4:l1">vreught</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Boven mijn leven en alle <rhyme label="a" type="m" corresp="#s4:l1">geneugt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Nochtans die troost mijn ziele <rhyme label="b" type="m">eerlanck</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ick ben van sijne liefde <rhyme label="b" type="m" corresp="#s4:l4">kranck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy seynt my boden <rhyme label="a" type="m">veel</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hy troost my wel van <rhyme label="a" type="m" corresp="#s5:l1">veer</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Door brieven, maer O mijn lief <rhyme label="a" type="m" corresp="#s5:l1">wanneer</rhyme>?</l>
        <l id="s5:l4" met="4" type="-+">Wanneer sal hy my kussen <rhyme label="b" type="m">fijn</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Selfs met de kus sijns mondts <rhyme label="b" type="m" corresp="#s5:l4">divijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dochters van Syon <rhyme label="a" type="m">reen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Jerusalems <rhyme label="a" type="m" corresp="#s6:l1">gemeen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Waer wildy schoone der Wijven <rhyme label="a" type="m" corresp="#s6:l1">heen</rhyme>?</l>
        <l id="s6:l4" met="4" type="-+">Komt siet, hy die mijn ziele <rhyme label="b" type="m">behaeght</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Die is geboren van een <rhyme label="b" type="m" corresp="#s6:l4">maeght</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O schoonheyt <rhyme label="a" type="m">overschoon</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Mijn lief is Godes <rhyme label="a" type="m" corresp="#s7:l1">Soon</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Mijn Broeder en oock des menschen <rhyme label="a" type="m" corresp="#s7:l1">Soon</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die door sijn liefd’ mijn ziele <rhyme label="b" type="m">verzaedt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Die sterf den doot om mijn <rhyme label="b" type="m" corresp="#s7:l4">misdaedt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">De doodt van mijn lief <rhyme label="a" type="m">wis</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Mijn eeuwigh leven <rhyme label="a" type="m" corresp="#s8:l1">is</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Mijn lief is mijn en ick ben <rhyme label="a" type="m" corresp="#s8:l1">sijn</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Komt gaen wy Christ geloovige <rhyme label="b" type="m">stam</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Komt tot de Bruyloft van het <rhyme label="b" type="m" corresp="#s8:l4">Lam</rhyme>.</l>
      </lg>
    </lg>
  </text>
