    <melody>Waar is de dochter van Sion</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Jesus, geeft ons goede <rhyme label="a" type="m">leer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe dat wy moeten <rhyme label="b" type="f">worden</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Uw lendens, seydt hy, ik <rhyme label="a" type="m" corresp="#s1:l1">begeer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat gy-lie sult <rhyme label="b" type="f" corresp="#s1:l2">omgorden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Licht uw' handen branden <rhyme label="a" type="m">laet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En weest als een <rhyme label="b" type="f">vroome</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Knecht, die op sijne wake <rhyme label="a" type="m" corresp="#s2:l1">staet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Tot dat sijn Heer t'huys <rhyme label="b" type="f" corresp="#s2:l2">koome</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De deur hy opent met 'er <rhyme label="a" type="m">spoet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Soo haest hy die hoordt <rhyme label="b" type="f">raken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">G'luksaligh sijn die knechten <rhyme label="a" type="m" corresp="#s3:l1">goet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die welke alsoo <rhyme label="b" type="f" corresp="#s3:l2">waken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Heer sijn self omgorden <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En setten sijn knechts <rhyme label="b" type="f">neere</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En hy sal gaen dienen <rhyme label="a" type="m" corresp="#s4:l1">al</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met wonderlijke <rhyme label="b" type="f" corresp="#s4:l2">eere</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Indien hy op de tweede <rhyme label="a" type="m">waght</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Of op de derde <rhyme label="b" type="f">koome</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En vindt sijn knechten wel <rhyme label="a" type="m" corresp="#s5:l1">verdaght</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Geluckigh sijn die <rhyme label="b" type="f" corresp="#s5:l2">vroome</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Indien den VaÃªr van 't <rhyme label="a" type="m">huys-gesin</rhyme></l>
        <l id="s6:l2" met="3" type="-+">De uer wist, dat sou <rhyme label="b" type="f">naken</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Den dief, om daer te breeken <rhyme label="a" type="m" corresp="#s6:l1">in</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hy sou daer wel op <rhyme label="b" type="f" corresp="#s6:l2">waken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dus houdt gy-lieden ook goe' <rhyme label="a" type="m">waght</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Want 's menschen Soon sal <rhyme label="b" type="f">koomen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Op sulken uer als gy minst <rhyme label="a" type="m" corresp="#s7:l1">aght</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dus is 't geen tijdt van <rhyme label="b" type="f" corresp="#s7:l2">droomen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel laet ons waken al <rhyme label="a" type="m">termijn</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En na Goodts woorden <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dan moogen wy navolgers <rhyme label="a" type="m" corresp="#s8:l1">sijn</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Van sijne <rhyme label="b" type="f" corresp="#s8:l2">Confessoren</rhyme>.</l>
      </lg>
    </lg>
  </text>
