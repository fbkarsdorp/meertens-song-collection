  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Ioseph, Iesus <rhyme label="a" type="f">Voeder</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Ginck met Iesus <rhyme label="a" type="f" corresp="#s1:l1">Moeder</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Soecken een <rhyme label="b" type="m">Herbergh</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">De Weerdinne seer <rhyme label="c" type="m">ontstelt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Seght mijn kamer is <rhyme label="d" type="f">bequaemer</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Voor de Heeren met wel <rhyme label="c" type="m" corresp="#s1:l4">ghelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Ioseph riep met <rhyme label="a" type="f">klachten</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Laet ons hier <rhyme label="a" type="f" corresp="#s2:l1">vernachten</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Want mijn Vrouwe <rhyme label="b" type="m">sucht</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Berght Maria om haer <rhyme label="c" type="m">Kindt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">By u-lieden, kan ’t <rhyme label="d" type="f">gheschieden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Ick sal slaepen in den <rhyme label="c" type="m" corresp="#s2:l4">windt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Ioseph bleef noch <rhyme label="a" type="f">kermen</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Ach wilt ons <rhyme label="a" type="f" corresp="#s3:l1">ontfermen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Herberght dese <rhyme label="b" type="m">Vrouw</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Men wees haer daer een <rhyme label="c" type="m">schuer</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Daer de vlaeghen den wint <rhyme label="d" type="f">jaeghen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Door ’t huys sonder muer of <rhyme label="c" type="m" corresp="#s3:l4">deur</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">’t Huys was sonder <rhyme label="a" type="f">setel</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Sonder pan en <rhyme label="a" type="f" corresp="#s4:l1">ketel</rhyme>:</l>
        <l id="s4:l3" met="3" type="+-">Ioseph was <rhyme label="b" type="m">benouwt</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Want daer en was gheen <rhyme label="c" type="m">ghemack</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Iesus huysken, met een <rhyme label="d" type="f">Kruysken</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Was met een vervallen <rhyme label="c" type="m" corresp="#s4:l4">dack</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Iesus stilt u <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Ghy sult haest <rhyme label="a" type="f" corresp="#s5:l1">verblijden</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">d’Herders komen <rhyme label="b" type="m">af</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En sy brenghen goede <rhyme label="c" type="m">waer</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">By dees vrienden suldy <rhyme label="d" type="f">vinden</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Voor het Kindt een <rhyme label="c" type="m" corresp="#s5:l4">Nieuwe-jaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Wy en zijn maer <rhyme label="a" type="f">Boeren</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Derven ons niet <rhyme label="a" type="f" corresp="#s6:l1">roeren</rhyme></l>
        <l id="s6:l3" met="3" type="+-">Om het Kindt te <rhyme label="b" type="m">sien</rhyme>?</l>
        <l id="s6:l4" met="4" type="+-">Nochtans brandt ons herte <rhyme label="c" type="m">seer</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Lieve Moeder, Ioseph, <rhyme label="d" type="f">Broeder</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Toont ons den volmaeckten <rhyme label="c" type="m" corresp="#s6:l4">Heer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Herders wilt hem <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Iesus komt van <rhyme label="a" type="f" corresp="#s7:l1">boven</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">Niet naer <rhyme label="b" type="m">rijcke-lien</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Maer naer Herders slecht en <rhyme label="c" type="m">recht</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Die kan stercken al ons <rhyme label="d" type="f">wercken</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Wilt hier heden wesen <rhyme label="c" type="m" corresp="#s7:l4">knecht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Wy sullen ons <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s8:l2" met="3" type="+-">Het Kindt eere <rhyme label="a" type="f" corresp="#s8:l1">gheven</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Want ’t is onsen <rhyme label="b" type="m">Godt</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">En wy bidden <rhyme label="c" type="m">al-te-gaer</rhyme>;</l>
        <l id="s8:l5" met="4" type="+-">Heer hoort heden ons <rhyme label="d" type="f">ghebeden</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">En jont ons een <rhyme label="c" type="m" corresp="#s8:l4">Nieuwe-jaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
