    <melody>Puisqu'au lieu de la douceur</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ROomsche Leeraers! ghy <rhyme label="a" type="m">bedrieght</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Klerken ende <rhyme label="b" type="f">Leken</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Mette ballast van uw <rhyme label="a" type="m" corresp="#s1:l1">Biecht</rhyme>.</l>
        <l id="s1:l4" met="3" type="+-">VVant de Texten <rhyme label="b" type="f" corresp="#s1:l2">spreken</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Niet dan van ’t gepreekte <rhyme label="c" type="m">woord</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Daer me’e Christus <rhyme label="d" type="f">Tolken</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Als haer leering werd <rhyme label="c" type="m" corresp="#s1:l5">gehoordt</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Roepen tot de <rhyme label="d" type="f" corresp="#s1:l6">volken</rhyme></l>
        <l id="s1:l9" met="4" type="+-">Dat  hun zonde, schuld en <rhyme label="e" type="m">pijn</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Deur ’t geloof vergeven <rhyme label="e" type="m" corresp="#s1:l9">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dus zoo maekt de nieuwe <rhyme label="a" type="m">sect</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Vande nieuwe <rhyme label="b" type="f">Plompers</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Die met Christus Tempel <rhyme label="a" type="m" corresp="#s2:l1">gekt</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Van zijn rechters, <rhyme label="b" type="f" corresp="#s2:l2">Trompers</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Niet dan om te blazen <rhyme label="c" type="m">uit</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Zijn gegeven <rhyme label="d" type="f">oorden</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Maer wel tegen ’t klaer <rhyme label="c" type="m" corresp="#s2:l5">geluyd</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Van Goods eigen <rhyme label="d" type="f" corresp="#s2:l6">woorden</rhyme>.</l>
        <l id="s2:l9" met="4" type="+-">Die, zoot Euangely <rhyme label="e" type="m">meld</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Hen tot rechters heeft <rhyme label="e" type="m" corresp="#s2:l9">gesteld</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Des zoo’n gaf hy geen <rhyme label="a" type="m">Trompet</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Henluy hier in <rhyme label="b" type="f">handen</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Maer een sleutel; jae noch <rhyme label="a" type="m" corresp="#s3:l1">het</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Magt om alle <rhyme label="b" type="f" corresp="#s3:l2">banden</rhyme></l>
        <l id="s3:l5" met="4" type="+-">’t Sy te binden, ’t sy <rhyme label="c" type="m">t’ondoen</rhyme>.</l>
        <l id="s3:l6" met="3" type="+-">Zoo dat hy van <rhyme label="d" type="f">waerde</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Inden Hemel het <rhyme label="c" type="m" corresp="#s3:l5">verzoen</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Houden zou van <rhyme label="d" type="f" corresp="#s3:l6">d’aerde</rhyme>.</l>
        <l id="s3:l9" met="4" type="+-">Zegt nu eens met goed <rhyme label="e" type="m">gewis</rhyme>:</l>
        <l id="s3:l10" met="4" type="+-">Of dit maer een boodschap <rhyme label="e" type="m" corresp="#s3:l9">is</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Zeker, wildy spreken <rhyme label="a" type="m">naer</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Rede van <rhyme label="b" type="f">conscienty</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ghy zult zeggen: neent <rhyme label="a" type="m" corresp="#s4:l1">voorwaer</rhyme>.</l>
        <l id="s4:l4" met="3" type="+-">Maer de <rhyme label="b" type="f" corresp="#s4:l2">penitenty</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Kreeg hier een te lieven <rhyme label="c" type="m">wet</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Die haer t’zondig <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Op berou, en goed <rhyme label="c" type="m" corresp="#s4:l5">opzet</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Minn’lijk zou <rhyme label="d" type="f" corresp="#s4:l6">vergeven</rhyme>;</l>
        <l id="s4:l9" met="4" type="+-">Door d’Apostolijke <rhyme label="e" type="m">hand</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">Die den Hemel doed <rhyme label="e" type="m" corresp="#s4:l9">gestand</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dit beduyen al te <rhyme label="a" type="m">rond</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Christus klare <rhyme label="b" type="f">reden</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Die met uitroep, noch <rhyme label="a" type="m" corresp="#s5:l1">oorkond</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Geenzins sijn te <rhyme label="b" type="f" corresp="#s5:l2">vrede</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Zonderling alzoomen <rhyme label="c" type="m">leest</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Dat tot dezen <rhyme label="d" type="f">eynde</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Christus blies zijn Heil’gen <rhyme label="c" type="m" corresp="#s5:l5">geest</rhyme>;</l>
        <l id="s5:l8" met="3" type="+-">Zeggende: te <rhyme label="d" type="f" corresp="#s5:l6">zeynden</rhyme></l>
        <l id="s5:l9" met="4" type="+-">Zijn Discip’len, min of <rhyme label="e" type="m">meer</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">Als den Vader hem wel <rhyme label="e" type="m" corresp="#s5:l9">eer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Werdt dan rein een zondig <rhyme label="a" type="m">vat</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Door een vuile <rhyme label="b" type="f">Pater</rhyme>?</l>
        <l id="s6:l3" met="4" type="+-">Waerom min als door het <rhyme label="a" type="m" corresp="#s6:l1">bad</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Van een vochtig <rhyme label="b" type="f" corresp="#s6:l2">water</rhyme>?</l>
        <l id="s6:l5" met="4" type="+-">Of en zal de hoogste <rhyme label="c" type="m">magt</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Door een mensch niet <rhyme label="d" type="f">kunnen</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">’t Geen hy door een waeter <rhyme label="c" type="m" corresp="#s6:l5">zacht</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Ons wel kan <rhyme label="d" type="f" corresp="#s6:l6">vergunnen</rhyme>?</l>
        <l id="s6:l9" met="4" type="+-">Och! al watter is of <rhyme label="e" type="m">leeft</rhyme>,</l>
        <l id="s6:l10" met="4" type="+-">God in zijn vermogen <rhyme label="e" type="m" corresp="#s6:l9">heeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Daer is niet <rhyme label="a" type="m">onmogelijk</rhyme></l>
        <l id="s7:l2" met="3" type="+-">By den Heer te <rhyme label="b" type="f">vinden</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Die ook wel door ’t vuile <rhyme label="a" type="m" corresp="#s7:l1">slijk</rhyme></l>
        <l id="s7:l4" met="3" type="+-">’t Licht gaf aen den <rhyme label="b" type="f" corresp="#s7:l2">blinden</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Iesu Heer! <rhyme label="c" type="m">gebenedijd</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Bistu, t’allen <rhyme label="d" type="f">stonden</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Die ons door uw’ Priester <rhyme label="c" type="m" corresp="#s7:l5">quyt</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Schelden woud de <rhyme label="d" type="f" corresp="#s7:l6">zonden</rhyme>.</l>
        <l id="s7:l9" met="4" type="+-">Datmen u dan vroug en <rhyme label="e" type="m">spae</rhyme>,</l>
        <l id="s7:l10" met="4" type="+-">Prijs en loof van uw’ <rhyme label="e" type="m" corresp="#s7:l9">genae</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
