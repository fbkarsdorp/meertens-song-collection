  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Laet ons toch gaen <rhyme label="a" type="f">bekeeren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">laet ons van sonden <rhyme label="b" type="m">obstaen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">sinckt op die passie ons <rhyme label="a" type="f" corresp="#s1:l1">heeren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">wat Christus voer ons heeft <rhyme label="b" type="m" corresp="#s1:l2">ghedaen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">doen hy int hoefken ghinck met <rhyme label="c" type="m">oetmoet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">badt hy zynen hemelschen vader <rhyme label="b" type="m" corresp="#s1:l2">aen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">van anxte sweeten hy water en <rhyme label="c" type="m" corresp="#s1:l5">bloet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het was om onse <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">het moess toch al <rhyme label="b" type="m">gheschien</rhyme></l>
        <l id="s2:l3" met="3" type="-+">die Joden als verwoede <rhyme label="a" type="f" corresp="#s2:l1">honden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">quamen Christum den heere <rhyme label="b" type="m" corresp="#s2:l2">bespien</rhyme></l>
        <l id="s2:l5" met="4" type="-+">met vierpannen en tortzen quamen sy <rhyme label="c" type="m">ghelaen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">maer Judas den <rhyme label="b" type="m" corresp="#s2:l2">verrader</rhyme></l>
        <l id="s2:l7" met="3" type="-+">heeft den heere met eenen cusse <rhyme label="c" type="m" corresp="#s2:l5">verraen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wien zoeck ghy vrinden <rhyme label="a" type="f">ghemeene</rhyme></l>
        <l id="s3:l2" met="3" type="-+">sprack die heere in dat <rhyme label="b" type="m">gespan</rhyme></l>
        <l id="s3:l3" met="3" type="-+">sy riepen Jesus van <rhyme label="a" type="f" corresp="#s3:l1">Nazareene</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Christus sprack / ick ben die selue <rhyme label="b" type="m" corresp="#s3:l2">man</rhyme></l>
        <l id="s3:l5" met="4" type="-+">sy vielen daer al ter aerden <rhyme label="c" type="m">bloet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">thert tocht hun lieden <rhyme label="b" type="m" corresp="#s3:l2">breken</rhyme></l>
        <l id="s3:l7" met="3" type="-+">want zy vreesden syn stemme <rhyme label="c" type="m" corresp="#s3:l5">groet</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Doen sy Jhesum hoerden <rhyme label="a" type="f">spreken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">soe vloedt dat Jootsche <rhyme label="b" type="m">gespuys</rhyme></l>
        <l id="s4:l3" met="3" type="-+">om haer boosheyt te <rhyme label="a" type="f" corresp="#s4:l1">vreken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">leyden zy hem tot Annas <rhyme label="b" type="m" corresp="#s4:l2">huys</rhyme></l>
        <l id="s4:l5" met="4" type="-+">van Annas tot Cayphas werdt hy <rhyme label="c" type="m">geleet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">valsche getuyghen dat zy daer <rhyme label="b" type="m" corresp="#s4:l2">sochten</rhyme></l>
        <l id="s4:l7" met="3" type="-+">sy beschuldichden hem vuer Pilatus <rhyme label="c" type="m" corresp="#s4:l5">vreet</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Pilatus ghinck Ihesum <rhyme label="a" type="f">examineren</rhyme></l>
        <l id="s5:l2" met="3" type="-+">mer in hem en vant hy gheen <rhyme label="b" type="m">mesdaet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">noctans dede hyten <rhyme label="a" type="f" corresp="#s5:l1">castigtren</rhyme></l>
        <l id="s5:l4" met="3" type="-+">met roeden van die Joeden <rhyme label="b" type="m" corresp="#s5:l2">quaet</rhyme></l>
        <l id="s5:l5" met="4" type="-+">want hy en vant gheen canse totter <rhyme label="c" type="m">doet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">noch riepen zy wilt <rhyme label="b" type="m" corresp="#s5:l2">cruycen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">oft wy claghent den keyser <rhyme label="c" type="m" corresp="#s5:l5">minoot</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Pilatus vreesden die <rhyme label="a" type="f">Joden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">te verliesen syn officie <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">een becken met water heeft hy <rhyme label="a" type="f" corresp="#s6:l1">ontboden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">en wiesch syn handen van donnosel <rhyme label="b" type="m" corresp="#s6:l2">bloet</rhyme></l>
        <l id="s6:l5" met="4" type="-+">dus werdt hy verordelt om ons <rhyme label="c" type="m">mesdaet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">syn cruys moest hy seluen <rhyme label="b" type="m" corresp="#s6:l2">draghen</rhyme></l>
        <l id="s6:l7" met="3" type="-+">waer vantmen oyet meerderen <rhyme label="c" type="m" corresp="#s6:l5">smaedt</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Doen die vroukens van Jherusalem <rhyme label="a" type="f">vernamen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">dat Jhesus na den berch werdt <rhyme label="b" type="m">geleydt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">sy quamen met Maria te <rhyme label="a" type="f" corresp="#s7:l1">samen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">en hebben hem zeere <rhyme label="b" type="m" corresp="#s7:l2">beschreydt</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Christus seyde vroukens en weent niet om <rhyme label="c" type="m">my</rhyme></l>
        <l id="s7:l6" met="3" type="-+">mer beweent v in v kinderen <rhyme label="b" type="m" corresp="#s7:l2">beydt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">want dit Cruys moet ick draghen <rhyme label="c" type="m" corresp="#s7:l5">vry</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Mer doen hy dat Cruys had <rhyme label="a" type="f">ghedraghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">op syn heylighe bloote <rhyme label="b" type="m">lyff</rhyme></l>
        <l id="s8:l3" met="3" type="-+">doen werdt hy daer aen <rhyme label="a" type="f" corresp="#s8:l1">gheslaghen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">met dry plompe naghelen <rhyme label="b" type="m" corresp="#s8:l2">styff</rhyme></l>
        <l id="s8:l5" met="4" type="-+">met dorste was zyn herte <rhyme label="c" type="m">verslaeft</rhyme></l>
        <l id="s8:l6" met="3" type="-+">met edick ende met <rhyme label="b" type="m" corresp="#s8:l2">galle</rhyme></l>
        <l id="s8:l7" met="3" type="-+">werdt Christus die heere <rhyme label="c" type="m" corresp="#s8:l5">gelaeft</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Syn leden beefden hem ter selue <rhyme label="a" type="f">stonden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">die liefde bewees haer <rhyme label="b" type="m">cracht</rhyme></l>
        <l id="s9:l3" met="3" type="-+">vader daer ghy my hebt in <rhyme label="a" type="f" corresp="#s9:l1">ghesonden</rhyme></l>
        <l id="s9:l4" met="3" type="-+">dat heb ick al <rhyme label="b" type="m" corresp="#s9:l2">volbracht</rhyme></l>
        <l id="s9:l5" met="4" type="-+">sy hooft is op syn recht borst <rhyme label="c" type="m">ghedaelt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">hy riep met luyder <rhyme label="b" type="m" corresp="#s9:l2">stemmen</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Adams schult heb ick <rhyme label="c" type="m" corresp="#s9:l5">betaelt</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Al mach ick van sonden <rhyme label="a" type="f">stincken</rhyme></l>
        <l id="s10:l2" met="3" type="-+">riep die morder <rhyme label="b" type="m">oetmoedelyck</rhyme></l>
        <l id="s10:l3" met="3" type="-+">O heere wilt myns <rhyme label="a" type="f" corresp="#s10:l1">ghedincken</rhyme></l>
        <l id="s10:l4" met="3" type="-+">als ghy coempt in v <rhyme label="b" type="m" corresp="#s10:l2">ryck</rhyme></l>
        <l id="s10:l5" met="4" type="-+">die heere sprack na zyn <rhyme label="c" type="m">aduys</rhyme></l>
        <l id="s10:l6" met="3" type="-+">ghy sult noch heden <rhyme label="b" type="m" corresp="#s10:l2">wesen</rhyme></l>
        <l id="s10:l7" met="3" type="-+">met my int <rhyme label="c" type="m" corresp="#s10:l5">Paradys</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Orloff om dueght <rhyme label="a" type="f">vermeeren</rhyme></l>
        <l id="s11:l2" met="3" type="-+">ghy menschen <rhyme label="b" type="m">excellent</rhyme></l>
        <l id="s11:l3" met="3" type="-+">die bitter passie ons <rhyme label="a" type="f" corresp="#s11:l1">heeren</rhyme></l>
        <l id="s11:l4" met="3" type="-+">altyt in v herte <rhyme label="b" type="m" corresp="#s11:l2">prent</rhyme></l>
        <l id="s11:l5" met="4" type="-+">en laetse daer nimmermeer <rhyme label="c" type="m">wtgaen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Godt sal hem tot v <rhyme label="b" type="m" corresp="#s11:l2">keeren</rhyme></l>
        <l id="s11:l7" met="3" type="-+">en naemaels in zyn ryck <rhyme label="c" type="m" corresp="#s11:l5">ontfaen</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
