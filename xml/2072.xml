    <melody>Bedroefde harten zij verblijd</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IS 't dat ghy naer een herte <rhyme label="a" type="m">snaeckt</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Dat in uwe Liefde <rhyme label="a" type="m" corresp="#s1:l1">blaeckt</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Soeten <rhyme label="b" type="f">Heere</rhyme></l>
        <l id="s1:l4" met="2" type="+-">Wat een <rhyme label="b" type="f" corresp="#s1:l3">eere</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Sou 't my <rhyme label="c" type="m">zyn</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dat ick u moght schencken 't <rhyme label="c" type="m" corresp="#s1:l5">myn</rhyme>?</l>
        <l id="s1:l7" met="3" type="-+">Myn hert' dat is <rhyme label="d" type="m">bereydt</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Ick wil 't u <rhyme label="e" type="f">gheven</rhyme></l>
        <l id="s1:l9" met="2" type="+-">O <rhyme label="e" type="f" corresp="#s1:l8">verheven</rhyme></l>
        <l id="s1:l10" met="2" type="+-"><rhyme label="d" type="m" corresp="#s1:l7">Majesteyt</rhyme>,</l>
        <l id="s1:l11" met="2" type="+-">Zyn 't uw' <rhyme label="f" type="f">wenschen</rhyme></l>
        <l id="s1:l12" met="2" type="+-">By de <rhyme label="f" type="f" corresp="#s1:l11">Menschen</rhyme></l>
        <l id="s1:l13" met="2" type="+-">Te <rhyme label="g" type="f">verkeeren</rhyme></l>
        <l id="s1:l14" met="2" type="+-">Soeten <rhyme label="g" type="f" corresp="#s1:l13">Heere</rhyme>,</l>
        <l id="s1:l15" met="2" type="+-">
          <rhyme label="h" type="m">Willekom</rhyme>
        </l>
        <l id="s1:l16" met="4" type="+-">Zyt ghy in’ hert' en <rhyme label="i" type="m">sin</rhyme></l>
        <l id="s1:l17" met="2" type="-+">O <rhyme label="h" type="m" corresp="#s1:l15">Bruydegom</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Onsteckt myn sinnen Soeten <rhyme label="a" type="m">Heer'</rhyme></l>
        <l id="s2:l2" met="4" type="+-">In uw' Minne meer en <rhyme label="a" type="m" corresp="#s2:l1">meer</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">Steckt in <rhyme label="b" type="f">brande</rhyme></l>
        <l id="s2:l4" met="2" type="+-">
          <rhyme label="b" type="f" corresp="#s2:l3">D'Offerhande</rhyme>
        </l>
        <l id="s2:l5" met="2" type="+-">Van myn <rhyme label="c" type="m">hert'</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat u op-ghedraghen <rhyme label="c" type="m" corresp="#s2:l5">wert</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Woont in myn hert' en <rhyme label="d" type="m">sin</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Wilt my <rhyme label="e" type="f">vercieren</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Met de <rhyme label="e" type="f" corresp="#s2:l8">vieren</rhyme></l>
        <l id="s2:l10" met="2" type="+-">Van uw' <rhyme label="d" type="m" corresp="#s2:l7">Min</rhyme>,</l>
        <l id="s2:l11" met="2" type="+-">Dat uw' <rhyme label="f" type="f">schichten</rhyme></l>
        <l id="s2:l12" met="2" type="+-">Myn <rhyme label="f" type="f" corresp="#s2:l11">ghevrichten</rhyme></l>
        <l id="s2:l13" met="2" type="+-">Vierigh <rhyme label="g" type="f">maken</rhyme>,</l>
        <l id="s2:l14" met="2" type="+-">En doen <rhyme label="g" type="f" corresp="#s2:l13">blaken</rhyme></l>
        <l id="s2:l15" met="2" type="+-">Myn <rhyme label="h" type="m">ghemoedt</rhyme>:</l>
        <l id="s2:l16" met="4" type="+-">Dat myn hert' Brandigh <rhyme label="i" type="m">wert</rhyme></l>
        <l id="s2:l17" met="2" type="-+">En liefde <rhyme label="h" type="m" corresp="#s2:l15">voedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dat uyt den Hemel daelt het <rhyme label="a" type="m">Vier</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En verslindt myn hert' en <rhyme label="a" type="m" corresp="#s3:l1">nier</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Die <rhyme label="b" type="f">verlanghen</rhyme></l>
        <l id="s3:l4" met="2" type="+-">Om <rhyme label="b" type="f" corresp="#s3:l3">t'ontfanghen</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Langhs hoe <rhyme label="c" type="m">meer</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Naer u alder-liefsten <rhyme label="c" type="m" corresp="#s3:l5">Heer'</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ick vlam naer uwe <rhyme label="d" type="m">vlam</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Die my soo <rhyme label="e" type="f">krachtigh</rhyme>,</l>
        <l id="s3:l9" met="2" type="+-">En soo <rhyme label="e" type="f" corresp="#s3:l8">machtigh</rhyme></l>
        <l id="s3:l10" met="2" type="+-">'t Hert' in <rhyme label="d" type="m" corresp="#s3:l7">nam</rhyme>,</l>
        <l id="s3:l11" met="2" type="+-">Dat ick <rhyme label="f" type="f">haeckte</rhyme>,</l>
        <l id="s3:l12" met="2" type="+-">Dat ick <rhyme label="f" type="f" corresp="#s3:l11">snaeckte</rhyme>,</l>
        <l id="s3:l13" met="2" type="+-">Dat ick <rhyme label="g" type="f">wenschste</rhyme>,</l>
        <l id="s3:l14" met="2" type="+-">En <rhyme label="g" type="f" corresp="#s3:l13">verslenschste</rhyme></l>
        <l id="s3:l15" met="2" type="+-">Door den <rhyme label="h" type="m">brandt</rhyme>,</l>
        <l id="s3:l16" met="4" type="+-">Die soo soet’ Myn <rhyme label="i" type="m">ghemoet</rhyme></l>
        <l id="s3:l17" met="2" type="-+">Hadd' <rhyme label="h" type="m" corresp="#s3:l15">over-mant</rhyme>,</l>
      </lg>
    </lg>
  </text>
