<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>5116</id>
    <date>
      <year-start>1924</year-start>
      <year-end>1925</year-end>
    </date>
    <tags>
      <tag>beggar song</tag>
      <tag>history song</tag>
    </tags>
    <melody>Nu laat ons allen God loven</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wie wil hooren een nieuw <rhyme label="a" type="m">liet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Wat daer int Iaer van soevenensestich is <rhyme label="a" type="m" corresp="#s1:l1">geschiet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Hoort toe ick salt u <rhyme label="b" type="f">singen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van veel Heerschoppen hoort na mijn <rhyme label="a" type="m" corresp="#s1:l1">bediet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">God wil haer noot <rhyme label="b" type="f" corresp="#s1:l3">verwinnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy zijn in Hollant te schepe <rhyme label="a" type="m">gegaen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Om na Emden te trecken hoort mijn <rhyme label="a" type="m" corresp="#s2:l1">vermaen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Voor Harlingen zijn sy <rhyme label="b" type="f">gecomen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Ses kerveels mit knechten <rhyme label="a" type="m" corresp="#s2:l1">gelaen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Die hebbent so haest <rhyme label="b" type="f" corresp="#s2:l3">vernomen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Doen de Graef van Megen te Amstelredam binnen <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s3:l2" met="4" type="-+">De Goesen dit so haest <rhyme label="a" type="m" corresp="#s3:l1">vernam</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van Amsterdam zijn sy <rhyme label="b" type="f">geweecken</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Sy togen na Meemlick al binnen der <rhyme label="a" type="m" corresp="#s3:l1">stadt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Aldaer zijn sy <rhyme label="b" type="f" corresp="#s3:l3">gestreken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die Goesen waren in groter <rhyme label="a" type="m">noot</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Daer zijnder veel gebracht ter <rhyme label="a" type="m" corresp="#s4:l1">doot</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Int water zijn sy <rhyme label="b" type="f">verdroncken</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En is dat niet lijden <rhyme label="a" type="m" corresp="#s4:l1">groot</rhyme></l>
        <l id="s4:l5" met="3" type="-+">God wil haer herte <rhyme label="b" type="f" corresp="#s4:l3">ontfoncken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De Schipper heft hier niet op <rhyme label="a" type="m">verdacht</rhyme>:</l>
        <l id="s5:l2" met="4" type="-+">hy heftse te harlingen int sant <rhyme label="a" type="m" corresp="#s5:l1">gebracht</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Daer hebben sy lange <rhyme label="b" type="f">gelegen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Mijn Heer van Arenborch quam met grooter <rhyme label="a" type="m" corresp="#s5:l1">macht</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Aldaer zijn sy <rhyme label="b" type="f" corresp="#s5:l3">gecregen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Het geschiede op een <rhyme label="a" type="m">maendach</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Datmen Arenborchs vaendele vligen <rhyme label="a" type="m" corresp="#s6:l1">sach</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Te Harlingen op den <rhyme label="b" type="f">haven</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Al waren de Goesen noch so <rhyme label="a" type="m" corresp="#s6:l1">sterck</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Wy willense <rhyme label="b" type="f" corresp="#s6:l3">veriagen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De Schipper vant schip heeft haer <rhyme label="a" type="m">verraen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Hondert en vijf zijn daer <rhyme label="a" type="m" corresp="#s7:l1">gevaen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Soo alst is <rhyme label="b" type="f">gebleeken</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Sy worden te Harlingen <rhyme label="a" type="m" corresp="#s7:l1">gebracht</rhyme></l>
        <l id="s7:l5" met="3" type="-+">De boyen mosten sy <rhyme label="b" type="f" corresp="#s7:l3">slepen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Doen sy te Harlingen binnen <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Daer stont so menich Wijf ende <rhyme label="a" type="m" corresp="#s8:l1">man</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Sy beclagen haer allen soo <rhyme label="b" type="f">seere</rhyme></l>
        <l id="s8:l4" met="4" type="-+">O rijck God hoe wil ons dit <rhyme label="a" type="m" corresp="#s8:l1">vergaen</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Dat weet ghy Godt den <rhyme label="b" type="f" corresp="#s8:l3">Heere</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Mijn Heer van Arenborch wel <rhyme label="a" type="m">genant</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Hy was Stathouder over <rhyme label="a" type="m" corresp="#s9:l1">Vrieslant</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Gesellen wat hebt ghy <rhyme label="b" type="f">misdaen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Ghy hebt tegen Coninges placaet <rhyme label="a" type="m" corresp="#s9:l1">gedaent</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Dat sal costen u <rhyme label="b" type="f" corresp="#s9:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wi hebben tegen Conincx placaet nie <rhyme label="a" type="m">gedaen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Maer om de Inquisitie tegen te <rhyme label="a" type="m" corresp="#s10:l1">staen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">om te beschermen de onnoselen haer <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Daer toe hadden wy ons <rhyme label="a" type="m" corresp="#s10:l1">bereyt</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Daer toe hadden wy ons <rhyme label="b" type="f" corresp="#s10:l3">begeven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Sy zijn na dat blochuys <rhyme label="a" type="m">gebracht</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Daer toe alle so seer <rhyme label="a" type="m" corresp="#s11:l1">besocht</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Haer gelt ende geweer <rhyme label="b" type="f">benomen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Sy spraken, Stathouder weest wel <rhyme label="a" type="m" corresp="#s11:l1">gemoet</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Het sal u niet wel <rhyme label="b" type="f" corresp="#s11:l3">vromen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Batenburchs sonen worden wech <rhyme label="a" type="m">gesandt</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Mit twee Heerschopen: al wt <rhyme label="a" type="m" corresp="#s12:l1">Vrieslant</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Op dat huis te Vilfoort zijn sy <rhyme label="b" type="f">gelegen</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Sy sullen wel wederom <rhyme label="a" type="m" corresp="#s12:l1">comen</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Mogen sy anders <rhyme label="b" type="f" corresp="#s12:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">De ons dit nieu liet eerst <rhyme label="a" type="m">sanck</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Dat was een Lantsknecht wt <rhyme label="a" type="m" corresp="#s13:l1">Brabant</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Hy heft dat so wel <rhyme label="b" type="f">gesongen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Hy heft te Harlingen gevangen <rhyme label="a" type="m" corresp="#s13:l1">gewest</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Den dans is hy <rhyme label="b" type="f" corresp="#s13:l3">ontsprongen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Loff prijsdense God in <rhyme label="a" type="m">eewicheyt</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Wy bidden door u <rhyme label="a" type="m" corresp="#s14:l1">Mayesteyt</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Wilt ons genade <rhyme label="b" type="f">geven</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Op datwy moegen zijn <rhyme label="a" type="m" corresp="#s14:l1">bereyt</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Na u woorden te <rhyme label="b" type="f" corresp="#s14:l3">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
