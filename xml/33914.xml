    <melody>Nu wees gegroet Maria zoet</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIe meent gy is een wijse <rhyme label="a" type="m">knecht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die welke van sijn <rhyme label="b" type="f">Heere</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Gestelt is, ende blijft <rhyme label="a" type="m" corresp="#s1:l1">oprecht</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om 't huys wel te <rhyme label="b" type="f" corresp="#s1:l2">regeere</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die welke op sijn tijt de <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van Terruwe <rhyme label="b" type="f">uyt-deele</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Wanneer sijn Heere dat <rhyme label="a" type="m" corresp="#s2:l1">verstaet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die stelt hem over <rhyme label="b" type="f" corresp="#s2:l2">veele</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer soo dan knechte in hem <rhyme label="a" type="m">seydt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Mijn Heer blijft al-an <rhyme label="b" type="f">buyten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En soo verlaet sijn <rhyme label="a" type="m" corresp="#s3:l1">trouwigheydt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En hem begeeft tot <rhyme label="b" type="f" corresp="#s3:l2">guyten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En voort aen dronken drinken <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En eet het lijf heel <rhyme label="b" type="f">volle</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hy knechten ende meyden <rhyme label="a" type="m" corresp="#s4:l1">slaet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Al-eens of hy was <rhyme label="b" type="f" corresp="#s4:l2">dolle</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den Heer sal komen <rhyme label="a" type="m">onverwaght</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En hem sijn staet <rhyme label="b" type="f">onthouwen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En stellen hem voor <rhyme label="a" type="m" corresp="#s5:l1">on-geaght</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In 't uytschot der <rhyme label="b" type="f" corresp="#s5:l2">ontrouwen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Een Knecht, die sijn Heers wille <rhyme label="a" type="m">weet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En hem soo niet wil <rhyme label="b" type="f">dragen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Voor deesen worden dan <rhyme label="a" type="m" corresp="#s6:l1">bereet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ontallijke veel <rhyme label="b" type="f" corresp="#s6:l2">slagen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer deese, die het niet en <rhyme label="a" type="m">wist</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En heeft soo quaet <rhyme label="b" type="f">bedreeven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Terwijlen hy hem heeft <rhyme label="a" type="m" corresp="#s7:l1">vergist</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Men weynigh slaegh sal <rhyme label="b" type="f" corresp="#s7:l2">geeven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dien welke is gegeeven <rhyme label="a" type="m">veel</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Daer wil men veel van <rhyme label="b" type="f">halen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dien is bevoolen grooter <rhyme label="a" type="m" corresp="#s8:l1">deel</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die moet ook meer <rhyme label="b" type="f" corresp="#s8:l2">betalen</rhyme>.</l>
      </lg>
    </lg>
  </text>
