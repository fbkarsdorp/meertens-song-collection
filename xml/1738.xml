    <melody>Rijke God wie zal ik klagen</melody>
    <categories>
      <category translation="love and sex">liefde en seks</category>
      <category translation="occasions">gelegenheden</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">RIic god wie sal ic <rhyme label="a" type="f">clagen</rhyme> |</l>
        <l id="s1:l2" met="3" type="-+">dat heymelijc lijden <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Mijn boel is mi <rhyme label="c" type="f">veriaghet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Scheyden is mi geworden <rhyme label="b" type="m" corresp="#s1:l2">pijn</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Mijn boel is mi <rhyme label="c" type="f" corresp="#s1:l3">veriaget</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Sceyden is mi geworden <rhyme label="d" type="m">cont</rhyme></l>
        <l id="s1:l7" met="3" type="-+">dus draue ic ouer geen <rhyme label="e" type="f">heyde</rhyme></l>
        <l id="s1:l8" met="3" type="-+">mijn herte is mi seer <rhyme label="d" type="m" corresp="#s1:l6">gewont</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hi badt mi so <rhyme label="a" type="f">minlijcke</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met witten armen <rhyme label="b" type="m">blanck</rhyme></l>
        <l id="s2:l3" met="3" type="-+">dat ic bi hem woude <rhyme label="c" type="f">bliuen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die somer en is niet <rhyme label="b" type="m" corresp="#s2:l2">lanck</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ic en mach bi v niet <rhyme label="c" type="f" corresp="#s2:l3">bliuen</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Ick en mach bi v niet <rhyme label="d" type="m">zijn</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Ick wil ouer geen groen <rhyme label="e" type="f">heide</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Tot die alder liefste <rhyme label="d" type="m" corresp="#s2:l6">mijn</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Moet ic nv van haer <rhyme label="a" type="f">sceyden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">dat doet mijnder herten so <rhyme label="b" type="m">wee</rhyme></l>
        <l id="s3:l3" met="3" type="-+">dus vaertse ouer gheen <rhyme label="c" type="f">heiden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Tot dat icse wederomme <rhyme label="b" type="m" corresp="#s3:l2">sie</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Adieu mijn <rhyme label="c" type="f" corresp="#s3:l3">alderliefste</rhyme></l>
        <l id="s3:l6" met="3" type="-+">mijn herte blijft mi <rhyme label="d" type="m">doorwont</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Ick en mach altijt bi v niet <rhyme label="e" type="f">wesen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Blijft ghi nv doch altijt <rhyme label="d" type="m" corresp="#s3:l6">ghesont</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Een bitter cruyt is <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat proeue ic wel nv ter <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Wie noyt van zijn liefken en <rhyme label="c" type="f">scheyde</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hi en weet van gheender <rhyme label="b" type="m" corresp="#s4:l2">pijn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Mijn liefken vaert ouer gheen <rhyme label="c" type="f" corresp="#s4:l3">heyde</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ic en mach bi haer niet <rhyme label="d" type="m">zijn</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Adieu mijn <rhyme label="e" type="f">alderliefste</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Het moet nv gescheyden <rhyme label="d" type="m" corresp="#s4:l6">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
