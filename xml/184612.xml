  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALle daegen met <rhyme label="a" type="f">behaegen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ziele, singht Maria's <rhyme label="b" type="m">Lof</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Viert om't meeste haere <rhyme label="c" type="f">Feeste</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">U haer daeden geven <rhyme label="b" type="m" corresp="#s1:l2">Stof</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Wilt bemercken al haer <rhyme label="d" type="f">wercken</rhyme></l>
        <l id="s1:l6" met="4" type="+-">En haer hooge <rhyme label="e" type="m">weerdigheyt</rhyme>;</l>
        <l id="s1:l7" met="4" type="+-">Singht haer leven, soo <rhyme label="f" type="f">verheven</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Singht de Maeght van <rhyme label="e" type="m" corresp="#s1:l6">Saeligheydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Biet haer eere, dat den <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s2:l2" met="4" type="+-">U door haer van quaedt <rhyme label="b" type="m">bevrydt</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Wilt haer bidden, dat uyt <rhyme label="c" type="f">t'midden</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Gy verr' van de sonden <rhyme label="b" type="m" corresp="#s2:l2">syt</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Sy deed' daelen s'Hemels <rhyme label="d" type="f">straelen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Brocht het eeuwigh bly <rhyme label="e" type="m">gesicht</rhyme>;</l>
        <l id="s2:l7" met="4" type="+-">Sy van binnen uwe <rhyme label="f" type="f">sinnen</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Met Godts grati' heeft <rhyme label="e" type="m" corresp="#s2:l6">verlicht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gy, myn tonge, dat <rhyme label="a" type="f">gesonge</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Sy de Kroon der Moeder <rhyme label="b" type="m">Maeght</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die met t'leven Godt te <rhyme label="c" type="f">geven</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Verr' ons maledictie <rhyme label="b" type="m" corresp="#s3:l2">jaeght</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Uyt uw krachten sonder <rhyme label="d" type="f">wachten</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Dat gy-haeren Lof <rhyme label="e" type="m">verkondt</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Kloeck, wilt singen, wonder <rhyme label="f" type="f">dingen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Haer Triomph met vollen <rhyme label="e" type="m" corresp="#s3:l6">mondt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wilt, myn sinnen, haer <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Singht den luyster van dees <rhyme label="b" type="m">Bloem</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Doet vergaeren blyde <rhyme label="c" type="f">Snaeren</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Speelt geduerigh haeren <rhyme label="b" type="m" corresp="#s4:l2">roem</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Wie kan wesen <rhyme label="d" type="f">uyt-gelesen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Oyt soo in <rhyme label="e" type="m">wel-sprekentheydt</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Die vertellen, <rhyme label="f" type="f">op-kan-stellen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Singen haer <rhyme label="e" type="m" corresp="#s4:l6">uyt-nementheydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Laet ons prysen, eer <rhyme label="a" type="f">bewysen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Aen die alles heeft <rhyme label="b" type="m">verblydt</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Looft met vreughden al haer <rhyme label="c" type="f">deughden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Haer Triomph in s'vy andts <rhyme label="b" type="m" corresp="#s5:l2">strydt</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">k'Moet beherten, t'geen de <rhyme label="d" type="f">smerten</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Verr' uyt ons gemoedt <rhyme label="e" type="m">verjaeght</rhyme>;</l>
        <l id="s5:l7" met="4" type="+-">k'Moet besteden al myn <rhyme label="f" type="f">leden</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Tot den Lof van dese <rhyme label="e" type="m" corresp="#s5:l6">Maeght</rhyme>.</l>
      </lg>
    </lg>
  </text>
