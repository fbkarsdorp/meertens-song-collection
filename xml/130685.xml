  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">T'sa, trekt <rhyme label="a" type="f">rustig</rhyme></l>
        <l id="s1:l2" met="1" type="-+">En <rhyme label="a" type="f" corresp="#s1:l1">lustig</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Soldaten, te <rhyme label="b" type="m">veld</rhyme>!</l>
        <l id="s1:l4" met="2" type="+-">Wilt niet <rhyme label="c" type="f">beeven</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Voor <rhyme label="c" type="f" corresp="#s1:l4">sneeven</rhyme>.</l>
        <l id="s1:l6" met="2" type="-+">Volg Marlbourg, dien <rhyme label="b" type="m" corresp="#s1:l3">held</rhyme>,</l>
        <l id="s1:l7" met="6" type="-+">Die niet blijft in Serrail, voor de oorlogs kans <rhyme label="d" type="m">vertzaagd</rhyme>,</l>
        <l id="s1:l8" met="7" type="-+">Maer voor vryheid En godsdienst Zijn leeven moedig <rhyme label="d" type="m" corresp="#s1:l7">waagd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Laat ons <rhyme label="a" type="f">draven</rhyme>,</l>
        <l id="s2:l2" met="1" type="-+">Gy <rhyme label="a" type="f" corresp="#s2:l1">braaven</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">En trotzen de <rhyme label="b" type="m">dood</rhyme>!</l>
        <l id="s2:l4" met="2" type="+-">Stormt op <rhyme label="c" type="f">muuren</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Wilt <rhyme label="c" type="f" corresp="#s2:l4">verduuren</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Vuur, water en <rhyme label="b" type="m" corresp="#s2:l3">loot</rhyme>,</l>
        <l id="s2:l7" met="6" type="-+">Uwe veldheer gaet u voor gelijck een moedig <rhyme label="d" type="m">man</rhyme>.</l>
        <l id="s2:l8" met="7" type="-+">Laet uw steden, Volg met reden: Elk doe wat dat hy <rhyme label="d" type="m" corresp="#s2:l7">kan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Braave <rhyme label="a" type="f">baazen</rhyme>,</l>
        <l id="s3:l2" met="1" type="-+">’t Franse <rhyme label="a" type="f" corresp="#s3:l1">raasen</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Maakt ons niet <rhyme label="b" type="m">vervaard</rhyme>!</l>
        <l id="s3:l4" met="2" type="+-">Wilt het <rhyme label="c" type="f">doorstaen</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Hy zal ons <rhyme label="c" type="f" corresp="#s3:l4">voorgaan</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Te voet en te <rhyme label="b" type="m" corresp="#s3:l3">paard</rhyme>:</l>
        <l id="s3:l7" met="6" type="-+">Trekt dan t’zaamen onverzaagd uw lemmer uit de <rhyme label="d" type="m">schee</rhyme>.</l>
        <l id="s3:l8" met="7" type="-+">Wilt de Fransen Doen dansen Door ’t proeven van uw <rhyme label="d" type="m" corresp="#s3:l7">sneê</rhyme>.</l>
      </lg>
    </lg>
  </text>
