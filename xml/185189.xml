    <date>
      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>de rijp</orginal-name>
      <standard-name>De Rijp, The Netherlands</standard-name>
      <coordinates>
        <lon>52.5548999</lon>
        <lat>4.8440884</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Een meisje had een ruiter lief</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Godt ghy die mijn ziele <rhyme label="a" type="m">kent</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">V Lieff’lijc aenschijn tot my <rhyme label="a" type="m" corresp="#s1:l1">went</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Want door u heyligh <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Werd’ ick alleen <rhyme label="b" type="f" corresp="#s1:l3">genesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De selfde liefde die ghy <rhyme label="a" type="m">draeght</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Tot uwen Soon die u <rhyme label="a" type="m" corresp="#s2:l1">behaeght</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Laet die mijn ziel <rhyme label="b" type="f">bestralen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En lieffelijck in <rhyme label="b" type="f" corresp="#s2:l3">dalen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">V liefd’ en can niet anders <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Bermhertigh sijn, en soecken <rhyme label="a" type="m" corresp="#s3:l1">an</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Om mildelijck te <rhyme label="b" type="f">deelen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Haer schatten en <rhyme label="b" type="f" corresp="#s3:l3">juweelen</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">My dan na u nature <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En deylt my uwe vruchten <rhyme label="a" type="m" corresp="#s4:l1">soet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Op dat door dese <rhyme label="b" type="f">smaken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Mijn ziel u mach <rhyme label="b" type="f" corresp="#s4:l3">ghenaken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Treckt ghy my met u liefde <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Mijn ziele verder van u <rhyme label="a" type="m" corresp="#s5:l1">vliet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Als ‘t schaepken aen der <rhyme label="b" type="f">heyden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat niet en vint de <rhyme label="b" type="f" corresp="#s5:l3">weyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mijn ziel is stadigh vol <rhyme label="a" type="m">geclagh</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Als sy u stem niet hooren <rhyme label="a" type="m" corresp="#s6:l1">mach</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Want in u soet <rhyme label="b" type="f">beweghen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Is al haer troost <rhyme label="b" type="f" corresp="#s6:l3">gheleghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dit is mijn ziel haer <rhyme label="a" type="m">fondament</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat ghy volmaeckt in liefde <rhyme label="a" type="m" corresp="#s7:l1">bent</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dit troost haer in ‘t <rhyme label="b" type="f">benouwen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Anders bleef sy in <rhyme label="b" type="f" corresp="#s7:l3">rouwen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">V woort, u werck, u Gheest <rhyme label="a" type="m">eenpaer</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ghetuygen van u liefde <rhyme label="a" type="m" corresp="#s8:l1">claer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Sy sijn hier in <rhyme label="b" type="f">eendrachtigh</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En daerom ist <rhyme label="b" type="f" corresp="#s8:l3">waerachtigh</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
