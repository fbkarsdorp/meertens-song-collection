    <melody>Florida zo het wezen mag</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EEn Slaef, gheperst door <rhyme label="a" type="m">Slaverny</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Denckt menigh-mael: och! was ick <rhyme label="a" type="m" corresp="#s1:l1">vry</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van dese <rhyme label="b" type="f">dienstbaerheden</rhyme>!</l>
        <l id="s1:l4" met="4" type="-+">Soo baed mijn hert in soete <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ick steld my dan <rhyme label="c" type="m" corresp="#s1:l4">gherust</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En was na wensch te <rhyme label="b" type="f" corresp="#s1:l3">vreden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer wanneer uyt dat wreet <rhyme label="a" type="m">ghewelt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Den armen Slaef is vry <rhyme label="a" type="m" corresp="#s2:l1">ghestelt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En niet meer vreest voor <rhyme label="b" type="f">slaghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Soo denckt hy weder in 't <rhyme label="c" type="m">ghemoet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Had ick een weynigh <rhyme label="c" type="m" corresp="#s2:l4">goedt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Soo soud ick niet meer <rhyme label="b" type="f" corresp="#s2:l3">klaghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer als hy dan de midd'len <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Daer van een Mensch bequaem'lick <rhyme label="a" type="m" corresp="#s3:l1">leeft</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo kan hy noch niet <rhyme label="b" type="f">rusten</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Maer denckt dan weer: was ick <rhyme label="c" type="m">ghelijck</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Als die, of die, soo <rhyme label="c" type="m" corresp="#s3:l4">rijck</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Soo sou my niet meer <rhyme label="b" type="f" corresp="#s3:l3">lusten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer als hy schatten, en <rhyme label="a" type="m">rijckdom</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">In volheydt heeft: en dan de <rhyme label="a" type="m" corresp="#s4:l1">som</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Noch daegh'licks siet <rhyme label="b" type="f">vermeeren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Soo denckt hy weder in 't <rhyme label="c" type="m">gemoet</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Wat baet my machtigh <rhyme label="c" type="m" corresp="#s4:l4">goedt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Soo ick niet mach <rhyme label="b" type="f" corresp="#s4:l3">Regeeren</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer wanneer als hy is <rhyme label="a" type="m">gebracht</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Tot hoogh gebiedt, en groote <rhyme label="a" type="m" corresp="#s5:l1">macht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Seer ver het Grauw te <rhyme label="b" type="f">boven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo denckt hy weer van stonden <rhyme label="c" type="m">aen</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Och! dat ick mochte <rhyme label="c" type="m" corresp="#s5:l4">gaen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">In Koninghlicke <rhyme label="b" type="f" corresp="#s5:l3">hoven</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer wanneer als hy komt in 't <rhyme label="a" type="m">Hof</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Is 't oude Liedt, hy walghter <rhyme label="a" type="m" corresp="#s6:l1">of</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En acht dat een <rhyme label="b" type="f">belooningh</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Voor hem al veel te kleyn, en <rhyme label="c" type="m">slecht</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Maer denckt: mocht ick van <rhyme label="c" type="m" corresp="#s6:l4">knecht</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Eens worden tot een <rhyme label="b" type="f" corresp="#s6:l3">Koningh</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer als daer na hy oock al <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Komt sitten op een <rhyme label="a" type="m" corresp="#s7:l1">Koninghs-throon</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Soo siet hy and're <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En rijcke Koninghen seer <rhyme label="c" type="m">veel</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Dan denckt hy: Mocht ick <rhyme label="c" type="m" corresp="#s7:l4">heel</rhyme></l>
        <l id="s7:l6" met="3" type="-+">De Wereldt, self <rhyme label="b" type="f" corresp="#s7:l3">Regeeren</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer als sijn macht oock wordt soo <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Dat hy de gansche <rhyme label="a" type="m" corresp="#s8:l1">Aerden-kloot</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Doet na sijn wetten <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Soo denckt hy: Maer een Wereldts <rhyme label="c" type="m">Heer</rhyme>?</l>
        <l id="s8:l5" met="4" type="-+">Wel sijnder dan niet <rhyme label="c" type="m" corresp="#s8:l4">meer</rhyme>?</l>
        <l id="s8:l6" met="3" type="-+">Och hadde ick'er <rhyme label="b" type="f" corresp="#s8:l3">seven</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dus sendt hy strack sijn Boden <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Te soecken in het Noord, en <rhyme label="a" type="m" corresp="#s9:l1">Zuyd</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">In 't Oosten, en in 't <rhyme label="b" type="f">Westen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Op hope of'er hier of <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Noch niet een Wereldt <rhyme label="c" type="m" corresp="#s9:l4">waer</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Voor sijn gebiedt ten <rhyme label="b" type="f" corresp="#s9:l3">besten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">En t'wijl sijn volck na Landen <rhyme label="a" type="m">soeckt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Hy schier den Heer des Hemels <rhyme label="a" type="m" corresp="#s10:l1">vloeckt</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Ja denckt somtijdts in 't <rhyme label="b" type="f">droomen</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">Och! kond ick beyde Son en <rhyme label="c" type="m">Maen</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Na mijnen wil doen <rhyme label="c" type="m" corresp="#s10:l4">gaen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En vatten haere <rhyme label="b" type="f" corresp="#s10:l3">toomen</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Maer als hy dus wast boven <rhyme label="a" type="m">tucht</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Soo komt de doodt met snellen <rhyme label="a" type="m" corresp="#s11:l1">vlucht</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En tuymelt hem ten <rhyme label="b" type="f">grave</rhyme>:</l>
        <l id="s11:l4" met="4" type="-+">Daer leydt hy dan, dien Wereldts <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">En heeft aldaer niet <rhyme label="c" type="m" corresp="#s11:l4">meer</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Als doe hy was een <rhyme label="b" type="f" corresp="#s11:l3">Slave</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
