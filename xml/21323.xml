  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DEn tijt van onsen <rhyme label="a" type="f">iaren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die valt hier cort en <rhyme label="b" type="m">cleyn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wy moeten al van hier <rhyme label="a" type="f" corresp="#s1:l1">varen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Rijck, arm, ende alle <rhyme label="b" type="m" corresp="#s1:l2">ghemeyn</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Peyst vry <rhyme label="b" type="m" corresp="#s1:l2">certeyn</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat wy hier bitterheyt <rhyme label="c" type="f">besueren</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Eenen cleynen <rhyme label="b" type="m" corresp="#s1:l2">tijt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Ten sal niet langhe <rhyme label="c" type="f" corresp="#s1:l6">dueren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O menschen leert nv <rhyme label="a" type="f">steruen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En volcht Christum <rhyme label="b" type="m">naer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ons vleesch dat moet <rhyme label="a" type="f" corresp="#s2:l1">bederuen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat segghe ick v <rhyme label="b" type="m" corresp="#s2:l2">voorwaer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Hier om <rhyme label="b" type="m" corresp="#s2:l2">certeyn</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Uermaent dit uwe <rhyme label="c" type="f">ghebueren</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Dit lijen is <rhyme label="b" type="m" corresp="#s2:l2">cleyn</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Ten sal niet langhe <rhyme label="c" type="f" corresp="#s2:l6">dueren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Tot lijen zijn wy <rhyme label="a" type="f">gheboren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Onderworpen alle <rhyme label="b" type="m">ghewelt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Alle Gods <rhyme label="a" type="f" corresp="#s3:l1">wtuercoren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">So ons die Schriftuere <rhyme label="b" type="m" corresp="#s3:l2">spelt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Uerdraecht vry die v <rhyme label="b" type="m" corresp="#s3:l2">quelt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Nv ende in allen <rhyme label="c" type="f">vren</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Uwen tijt is <rhyme label="b" type="m" corresp="#s3:l2">ghestelt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ten sal niet langhe <rhyme label="c" type="f" corresp="#s3:l6">duren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En latet v niet <rhyme label="a" type="f">verdrieten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Al valt v darmoe <rhyme label="b" type="m">swaer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Den tijt sullen wy <rhyme label="a" type="f" corresp="#s4:l1">ghenieten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En comen in zijn glory <rhyme label="b" type="m" corresp="#s4:l2">claer</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Want God is ons <rhyme label="b" type="m" corresp="#s4:l2">vaer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Waerom willen wy dan <rhyme label="c" type="f">trueren</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Het is ons leste <rhyme label="b" type="m" corresp="#s4:l2">iaer</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Ten sal niet langhe <rhyme label="c" type="f" corresp="#s4:l6">dueren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gods volcken hier <rhyme label="a" type="f">beneden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wert nv te rechte <rhyme label="b" type="m">bekent</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Daer Christus voor heeft <rhyme label="a" type="f" corresp="#s5:l1">ghebeden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En ons beurijt vant helsch <rhyme label="b" type="m" corresp="#s5:l2">serpent</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Die ons nv <rhyme label="b" type="m" corresp="#s5:l2">present</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Int vier der armoen wilt <rhyme label="c" type="f">pueren</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Maer ons lijden <rhyme label="b" type="m" corresp="#s5:l2">ent</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Ten sal niet langhe <rhyme label="c" type="f" corresp="#s5:l6">dueren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O God al van hier <rhyme label="a" type="f">bouen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die God alder Goden <rhyme label="b" type="m">zijt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Men wilt v woort niet <rhyme label="a" type="f" corresp="#s6:l1">gheloouen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Nv noch te gheender <rhyme label="b" type="m" corresp="#s6:l2">tijt</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Daerom <rhyme label="b" type="m" corresp="#s6:l2">subijt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Sluyten sy ons tusschen <rhyme label="c" type="f">mueren</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Tis eenen cleynen <rhyme label="b" type="m" corresp="#s6:l2">tijt</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Ten sal niet langhe <rhyme label="c" type="f" corresp="#s6:l6">dueren</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Prince Christus onsen <rhyme label="a" type="f">broeder</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die voor ons sorghe <rhyme label="b" type="m">draecht</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Ghy zijt ons alder <rhyme label="a" type="f" corresp="#s7:l1">behoeder</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Wie isser die nv <rhyme label="b" type="m" corresp="#s7:l2">claecht</rhyme></l>
        <l id="s7:l5" met="3" type="-+">So dat v <rhyme label="b" type="m" corresp="#s7:l2">behaecht</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Hebt ghy ons willen <rhyme label="c" type="f">stueren</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Al zijn wy hier <rhyme label="b" type="m" corresp="#s7:l2">gheplaecht</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Ten sal niet eewich <rhyme label="c" type="f" corresp="#s7:l6">dueren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
