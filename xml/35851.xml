  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heer ick sien wel wat ghy <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">My dunckt t’is al verloren <rhyme label="a" type="m" corresp="#s1:l1">moet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy soeckt een Hert dat naer u <rhyme label="b" type="m">Iaeght</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En dat naer u gheduerigh <rhyme label="b" type="m" corresp="#s1:l3">vraeght</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer hier niemant en is <rhyme label="a" type="m">ontrent</rhyme>.</l>
        <l id="s2:l2" met="4" type="-+">Aen wie is uwen wensch <rhyme label="a" type="m" corresp="#s2:l1">bekent</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Noch niet en weten wat ghy <rhyme label="b" type="m">tracht</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Om dat sy woonen inden <rhyme label="b" type="m" corresp="#s2:l3">nacht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Bruydt ghy verstaet wel mijnen <rhyme label="a" type="m">wensch</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ick soeck het hert al van den <rhyme label="a" type="m" corresp="#s3:l1">Mensch</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ick soeck een hertien liever en <rhyme label="b" type="m">vrij</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Van al des Wereldts <rhyme label="b" type="m" corresp="#s3:l3">slavernij</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Liefsten Ieseken ick <rhyme label="a" type="m">vraegh</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Wilt ghy mijn hertien dat ick <rhyme label="a" type="m" corresp="#s4:l1">draegh</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Mijn hert dat is de Wereldt <rhyme label="b" type="m">mue</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Houdt het toch vast ick gheef het <rhyme label="b" type="m" corresp="#s4:l3">uw</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Bruydt voorwaer ghy hebt <rhyme label="a" type="m">verstant</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat ghy treckt van u hert den <rhyme label="a" type="m" corresp="#s5:l1">bandt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ick treckt veel met de coort der <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Maer weynigh die my laeten <rhyme label="b" type="m" corresp="#s5:l3">in</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer als ick u mijn hertien <rhyme label="a" type="m">schenck</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat het dan let op uwen <rhyme label="a" type="m" corresp="#s6:l1">wenck</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Altijdt ghereedt tot uwen <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Laet in my komen gheen <rhyme label="b" type="m" corresp="#s6:l3">verschil</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Mijn Bruydt ick wil oock anders <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat’s mijnen wensch ghelijck ghy <rhyme label="a" type="m" corresp="#s7:l1">siet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En dat ick zijn magh Meester <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dat hert bemin ick uyt liefden <rhyme label="b" type="m" corresp="#s7:l3">reen</rhyme>.</l>
      </lg>
    </lg>
  </text>
