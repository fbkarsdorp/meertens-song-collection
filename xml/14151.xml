    <melody>Psalm 006 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn liet saud ick hier <rhyme label="a" type="f">dichten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Och vrinden mocht het <rhyme label="a" type="f" corresp="#s1:l1">stichten</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Vyt liefden <rhyme label="b" type="m">ongeueynst</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Op dat wy hier in <rhyme label="c" type="f">vrede</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Leefde nae christus <rhyme label="c" type="f" corresp="#s1:l4">sede</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat waer mijn herten <rhyme label="b" type="m" corresp="#s1:l3">wensch</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick weynste wel van <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat wy vry sonder <rhyme label="a" type="f" corresp="#s2:l1">smerten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Door den vrede seer <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Mochten Syn onser <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En Dat wy oock met <rhyme label="c" type="f" corresp="#s2:l4">desen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Mochten gebonden <rhyme label="b" type="m" corresp="#s2:l3">sijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Met desen bant <rhyme label="a" type="f">gebonden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Te Sijn hoort mijn <rhyme label="a" type="f" corresp="#s3:l1">vermonden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wilt in u herte <rhyme label="b" type="m">altijt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Vast hauden sonder <rhyme label="c" type="f">dralen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">So en sult ghy niet <rhyme label="c" type="f" corresp="#s3:l4">falen</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Haudt den vrede met <rhyme label="b" type="m" corresp="#s3:l3">vlijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wt liefden sonder <rhyme label="a" type="f">flauwen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Blijft by den Heer <rhyme label="a" type="f" corresp="#s4:l1">getrauwe</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Deur den vrede <rhyme label="b" type="m">subieckt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En altijt rechte <rhyme label="c" type="f">deure</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wilt hier gaen sonder <rhyme label="c" type="f" corresp="#s4:l4">treuren</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Soo wert ghy niet <rhyme label="b" type="m" corresp="#s4:l3">bepeckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gaen wy hier sonden <rhyme label="a" type="f">mincken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">De heere sal ons <rhyme label="a" type="f" corresp="#s5:l1">schincken</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Nae Sijn beloften <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">De croone hooch van <rhyme label="c" type="f">werden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Soo wy hier dan op <rhyme label="c" type="f" corresp="#s5:l4">eerden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">By hem blijven met <rhyme label="b" type="m" corresp="#s5:l3">spoet</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">By hem te blijven <rhyme label="a" type="f">spoedich</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En sijn geboden <rhyme label="a" type="f" corresp="#s6:l1">goedich</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Te houden door syn <rhyme label="b" type="m">Leer</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat is eenen schat <rhyme label="c" type="f">weerdich</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Blijft inden vrede <rhyme label="c" type="f" corresp="#s6:l4">veerdich</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En wyckt doch <rhyme label="b" type="m" corresp="#s6:l3">nemmermeer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Christus gaf sonder <rhyme label="a" type="f">myden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sijn Jongheren seer <rhyme label="a" type="f" corresp="#s7:l1">blijde</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Sijnen vrede wt <rhyme label="b" type="m">ghenae</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hierom laet ons vast <rhyme label="c" type="f">houden</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Aen hem sonder <rhyme label="c" type="f" corresp="#s7:l4">verflouden</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Blyven dan vroech en <rhyme label="b" type="m" corresp="#s7:l3">spae</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Oorlof wilt dit <rhyme label="a" type="f">aencleven</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Broeders hier hooch <rhyme label="a" type="f" corresp="#s8:l1">verheven</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En Susters <rhyme label="b" type="m">tryumphant</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ghy sult hier naer <rhyme label="c" type="f">ontfanghen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Met vreucht en groot <rhyme label="c" type="f" corresp="#s8:l4">verlanghen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Palm tacken inde <rhyme label="b" type="m" corresp="#s8:l3">hant</rhyme>.</l>
      </lg>
    </lg>
  </text>
