      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">CHRIste ghy zijt Dach ende <rhyme label="a" type="m">Licht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Voor dy is (HEER) verborgen <rhyme label="a" type="m" corresp="#s1:l1">nicht</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ghy Vaderlijcke lichte <rhyme label="b" type="m">Glants</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Leert ons den Wech der Waerheyt <rhyme label="b" type="m" corresp="#s1:l3">gants</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy bidden dijn Godlijcke <rhyme label="a" type="m">Macht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Behoed' ons (HEER) in deser <rhyme label="a" type="m" corresp="#s2:l1">Nacht</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Bewaer ons (HEER) voor alle <rhyme label="b" type="m">leyt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ghy Heylant Godt der <rhyme label="b" type="m" corresp="#s2:l3">Goedicheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Verdrijff den swaren slaep, Heer <rhyme label="a" type="m">Christ</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat ons niet schaed' des Vyants <rhyme label="a" type="m" corresp="#s3:l1">List</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat Vleesch in Deughent reyne <rhyme label="b" type="m">sy</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Soo zijn wy veler Sorghen <rhyme label="b" type="m" corresp="#s3:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als onse Ooghen slapen <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ons Hert in dy laet waecken <rhyme label="a" type="m" corresp="#s4:l1">vroe</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Bescherm ons Godes rechte <rhyme label="b" type="m">Handt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Verlost ons van der Sonden <rhyme label="b" type="m" corresp="#s4:l3">Bandt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Bescherm Heer dijne <rhyme label="a" type="m">Christenheyt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dijn Hulp altijdt sy ons <rhyme label="a" type="m" corresp="#s5:l1">bereyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Help ons Heer Godt wt aller <rhyme label="b" type="m">Noot</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Door dijn heylige Wonden <rhyme label="b" type="m" corresp="#s5:l3">Root</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghedenck Heer aen den swaren <rhyme label="a" type="m">Tijt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Daer d'lichaem meed' ghevanghen <rhyme label="a" type="m" corresp="#s6:l1">leyt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">De Siele die ghy hebt <rhyme label="b" type="m">verloost</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dier gheeft Heer Jesu dijnen <rhyme label="b" type="m" corresp="#s6:l3">Troost</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Godt Vader sy Loff, Eer en <rhyme label="a" type="m">Prijs</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Daer toe oock synen Sone <rhyme label="a" type="m" corresp="#s7:l1">wijs</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Des heyl'gen Geestes <rhyme label="b" type="m">goedicheyt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Van nu aen tot in <rhyme label="b" type="m" corresp="#s7:l3">Eewicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
