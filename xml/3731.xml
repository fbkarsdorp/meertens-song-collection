  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SAELIGH is hy <rhyme label="a" type="f">beuonden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die Godt vreest end dient <rhyme label="b" type="m">recht</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Die ooc gaet t'allen <rhyme label="a" type="f" corresp="#s1:l1">stonden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In sijnen weghen <rhyme label="b" type="m" corresp="#s1:l2">slecht</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Doer t'werck, t'welck ghy sult <rhyme label="c" type="f">dryuen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wert ghy hier wel <rhyme label="d" type="m">gheuoedt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">V' doen sal wel <rhyme label="c" type="f" corresp="#s1:l5">beklyuen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Spoedigh met <rhyme label="d" type="m" corresp="#s1:l6">ouervloedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">V' wyf sal ghelyck <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">In v' huys seer <rhyme label="b" type="m">verblydt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Den wynstock <rhyme label="a" type="f" corresp="#s2:l1">wtghelesen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die vrucht draeght t'sijner <rhyme label="b" type="m" corresp="#s2:l2">tydt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Aen den disch in een <rhyme label="c" type="f">kroone</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sullen v' kinders <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Als olyfspruyten <rhyme label="c" type="f" corresp="#s2:l5">schoone</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Nae melckandren voort <rhyme label="d" type="m" corresp="#s2:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dese schoone <rhyme label="a" type="f">weldaeden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ontfanght hy in't <rhyme label="b" type="m">ghemeyn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die met t'quaet niet <rhyme label="a" type="f" corresp="#s3:l1">belaeden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Is, maer vreest Godt <rhyme label="b" type="m" corresp="#s3:l2">alleyn</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Godt wt Zion <rhyme label="c" type="f">ghepresen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">V dees ghenaede <rhyme label="d" type="m">doet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat ghy sult sien nae <rhyme label="c" type="f" corresp="#s3:l5">desen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Ierusalems <rhyme label="d" type="m" corresp="#s3:l6">voorspoet</rhyme>.</l>
      </lg>
    </lg>
  </text>
