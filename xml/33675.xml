  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MAria seyd' met 's harten <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Mijne siel die maekt groot den <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En mijn geest in mijn Godt <rhyme label="a" type="m" corresp="#s1:l1">verheught</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die heeft aensien sijn sleghte <rhyme label="b" type="f" corresp="#s1:l2">Deere</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dus sullen, door gemeene <rhyme label="a" type="m">faem</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Mijn saligh heeten alle <rhyme label="b" type="f">lieden</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Want door sijn maght en Heyl'ge <rhyme label="a" type="m" corresp="#s2:l1">Naem</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Mijn seer groote dingen <rhyme label="b" type="f" corresp="#s2:l2">geschieden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En ook is sijn <rhyme label="a" type="m">barmhartigheydt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Tot all' Godtvreesende <rhyme label="b" type="f">geslaghte</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">In sijnen arm heeft hy <rhyme label="a" type="m" corresp="#s3:l1">verbreydt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En uytgewroght sijn groote <rhyme label="b" type="f" corresp="#s3:l2">maghte</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy heeft verstroyt de trots <rhyme label="a" type="m">hovaerd</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">De sterken uyt haer stoel <rhyme label="b" type="f">verdreeven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En die ootmoedigh sijn van <rhyme label="a" type="m" corresp="#s4:l1">aerd</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die heeft hy weer hooge <rhyme label="b" type="f" corresp="#s4:l2">verheeven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den armen hy vervult met <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">De rijken laet hy yle <rhyme label="b" type="f">leeden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En IsraÃ«l sijn Kindt hy <rhyme label="a" type="m" corresp="#s5:l1">hoedt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Gedaghtigh sijn <rhyme label="b" type="f" corresp="#s5:l2">barmhartigheden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Als hy sprak tot ons <rhyme label="a" type="m">Vaderen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Tot Abram desgelijke <rhyme label="b" type="f">meede</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Tot alle sijn <rhyme label="a" type="m" corresp="#s6:l1">nakoom'lingen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Sijn saet tot in all' <rhyme label="b" type="f" corresp="#s6:l2">eeuwigheede</rhyme>.</l>
      </lg>
    </lg>
  </text>
