  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Godts dienaer weest <rhyme label="a" type="m">gedachtich</rhyme></l>
        <l id="s1:l2" met="3" type="-+">dat ghij sijt <rhyme label="b" type="f">affgewasschen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Opt vont doer doepsel <rhyme label="a" type="m" corresp="#s1:l1">crachtich</rhyme></l>
        <l id="s1:l4" met="3" type="-+">vernieut doer saluing <rhyme label="b" type="f" corresp="#s1:l2">rasche</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maeckt dat wanneer den tijt <rhyme label="a" type="m">is</rhyme></l>
        <l id="s2:l2" met="3" type="-+">dat ghij v geest tot <rhyme label="b" type="f">rusten</rhyme></l>
        <l id="s2:l3" met="3" type="-+">op voorhoeft met borst <rhyme label="a" type="m" corresp="#s2:l1">geris</rhyme></l>
        <l id="s2:l4" met="3" type="-+">slaet cruijs tegen quade <rhyme label="b" type="f" corresp="#s2:l2">lusten</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het cruijs veriaecht alle <rhyme label="a" type="m">quaet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">die duijsterheijt van t'cruijs <rhyme label="b" type="f">vlijt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">thert dat hem opt cruijs <rhyme label="a" type="m" corresp="#s3:l1">verlaet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">en scroemt niet des viandts <rhyme label="b" type="f" corresp="#s3:l2">strijt</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Der moeten sijn vuijl <rhyme label="a" type="m">dromen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">oeck ghij lijfijgen <rhyme label="b" type="f">quelgeest</rhyme></l>
        <l id="s4:l3" met="3" type="-+">ghij die v pleecht <rhyme label="a" type="m" corresp="#s4:l1">beromen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">van quaet, loept wech ras <rhyme label="b" type="f" corresp="#s4:l2">aldereest</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O ghij gedraeijt serpent <rhyme label="a" type="m">crom</rhyme></l>
        <l id="s5:l2" met="3" type="-+">die door duijsent <rhyme label="b" type="f">omwegen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">en strijcken pestilent <rhyme label="a" type="m" corresp="#s5:l1">stom</rhyme></l>
        <l id="s5:l4" met="3" type="-+">quelt thert tot doecht <rhyme label="b" type="f" corresp="#s5:l2">genegen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Viandt bedrieger <rhyme label="a" type="m">scenlick</rhyme></l>
        <l id="s6:l2" met="3" type="-+">gaet wech want christus is <rhyme label="b" type="f">hier</rhyme></l>
        <l id="s6:l3" met="3" type="-+">het teecken v wel <rhyme label="a" type="m" corresp="#s6:l1">kenlick</rhyme></l>
        <l id="s6:l4" met="3" type="-+">verdoempt al v gesoert <rhyme label="b" type="f" corresp="#s6:l2">fier</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Al ist dat ons lichaem <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">hem geeft wenich tot <rhyme label="b" type="f">slapen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">ons siel gedenck christum <rhyme label="a" type="m" corresp="#s7:l1">soet</rhyme></l>
        <l id="s7:l4" met="3" type="-+">ghij sult haer niet <rhyme label="b" type="f" corresp="#s7:l2">bedrapen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Glorij sij v ewich <rhyme label="a" type="m">vaer</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Christe Coninck <rhyme label="b" type="f">warachtich</rhyme></l>
        <l id="s8:l3" met="3" type="-+">met geest een heijlich godt <rhyme label="a" type="m" corresp="#s8:l1">claer</rhyme></l>
        <l id="s8:l4" met="3" type="-+">in ewicheijt <rhyme label="b" type="f" corresp="#s8:l2">almachtich</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
