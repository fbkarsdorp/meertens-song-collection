    <melody>Psalm 100 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VErblijdt u in dit vrolijck <rhyme label="a" type="m">Feest</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En singht nu met een hoogen <rhyme label="a" type="m" corresp="#s1:l1">geest</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Drijft nu 't swaermoedich hart van <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En blaeck vry in dit heylsaem <rhyme label="b" type="m" corresp="#s1:l3">vyer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy vrolijck en vereenight <rhyme label="a" type="m">Paer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Verbindt u in den Echt te <rhyme label="a" type="m" corresp="#s2:l1">gaer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En maeckt door desen soeten <rhyme label="b" type="m">bandt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Een vaste strick, een eeuwigh <rhyme label="b" type="m" corresp="#s2:l3">pandt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een bant die door geen ramp <rhyme label="a" type="m">verslijt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die 't ongeval, noch oock de <rhyme label="a" type="m" corresp="#s3:l1">tijdt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die tegenspoet of droeve <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Kan scheyden als de wreede <rhyme label="b" type="m" corresp="#s3:l3">doot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De doot die scheyt geen suyv're <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Maer grist die dieper in den <rhyme label="a" type="m" corresp="#s4:l1">zin</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">De doodt verslindt al dat sy <rhyme label="b" type="m">voed'</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Maer liefde blijft in 't trou <rhyme label="b" type="m" corresp="#s4:l3">gemoedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De liefde wort door deugt <rhyme label="a" type="m">gequeeckt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die in de Lentsche jeught <rhyme label="a" type="m" corresp="#s5:l1">door-breeckt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">De reyne liefd', en 't Lentsche <rhyme label="b" type="m">bloedt</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Groeyt dieper alsse in d' ouder <rhyme label="b" type="m" corresp="#s5:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Verheught u t' saem en vlegt een <rhyme label="a" type="m">kroon</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En offert nu der liefden <rhyme label="a" type="m" corresp="#s6:l1">loon</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Op dat de Bruydt, met recht <rhyme label="b" type="m">verblijdt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Mach bloeyen in de <rhyme label="b" type="m" corresp="#s6:l3">Winter-tijdt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Op datse door haer soete <rhyme label="a" type="m">zin</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Mach krijgen loon door hare <rhyme label="a" type="m" corresp="#s7:l1">min</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">En dat sy binnen t' jaer de <rhyme label="b" type="m">Kraem</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Mach roepen 't schaepken by zijn <rhyme label="b" type="m" corresp="#s7:l3">naem</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O soete vreught! voor al 't <rhyme label="a" type="m">verdriet</rhyme></l>
        <l id="s8:l2" met="4" type="-+">De Bruydt haer lieve lust <rhyme label="a" type="m" corresp="#s8:l1">geniet</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Sy kan de planten, en het <rhyme label="b" type="m">groen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Aen hare Borst en Tafel <rhyme label="b" type="m" corresp="#s8:l3">voen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wel vrolijck mael, wel bly <rhyme label="a" type="m">vergaert</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Daer 't al in liefde is <rhyme label="a" type="m" corresp="#s9:l1">bedaert</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Daer zegen uyt den Hemel <rhyme label="b" type="m">daelt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En als een gulde regen <rhyme label="b" type="m" corresp="#s9:l3">straelt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wel saligh sy u groote <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Geluckigh u eerwaerde <rhyme label="a" type="m" corresp="#s10:l1">deught</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">Wel saligh sy u huys en <rhyme label="b" type="m">standt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Gezegent van Godts <rhyme label="b" type="m" corresp="#s10:l3">milde-handt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">De zegen dael van boven <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Met druppels van dien grooten <rhyme label="a" type="m" corresp="#s11:l1">Heer</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Geheylight met de soete <rhyme label="b" type="m">Vree</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Verrijck u hier en namaels <rhyme label="b" type="m" corresp="#s11:l3">mee</rhyme>.</l>
      </lg>
    </lg>
  </text>
