  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe lange sal ik <rhyme label="a" type="m">Galate</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Verstoten zijn van <rhyme label="b" type="m">u</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">En met een treurig hart, mijn <rhyme label="a" type="m" corresp="#s1:l1">re</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Geleyden sult gy <rhyme label="b" type="m" corresp="#s1:l2">schu</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En vluchtig altijt van mijn <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat sy de Goon <rhyme label="d" type="m">geklaeght</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Sal ik dan met verdriet en <rhyme label="c" type="m" corresp="#s1:l5">pijn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Steets van u zijn <rhyme label="d" type="m" corresp="#s1:l6">geplaeght</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ay wilt my die u soo <rhyme label="a" type="m">bemint</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En eeuwig minnen <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En ziel en sin aen u <rhyme label="a" type="m" corresp="#s2:l1">verbint</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Oprecht, en sonder <rhyme label="b" type="m" corresp="#s2:l2">gal</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Me minnen, ay toont u <rhyme label="c" type="m">gedwee</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Aen dees verliefde <rhyme label="d" type="m">ziel</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Die door u vel soo wit als <rhyme label="c" type="m" corresp="#s2:l5">snee</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">In minne-quale <rhyme label="d" type="m" corresp="#s2:l6">viel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">V oogen die de <rhyme label="a" type="m">helderheyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van Phœbus Godlijk <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Verlichten hebben soete <rhyme label="a" type="m" corresp="#s3:l1">Meyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In mijn dees quael <rhyme label="b" type="m" corresp="#s3:l2">gesticht</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Laet uwe soete <rhyme label="c" type="m">weder-min</rhyme></l>
        <l id="s3:l6" met="3" type="-+">We'er heelen dese <rhyme label="d" type="m">wont</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Die gy door uwe schoont’ <rhyme label="c" type="m" corresp="#s3:l5">Godin</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dees droeve ziel toe <rhyme label="d" type="m" corresp="#s3:l6">sondt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">So sult gy aen u <rhyme label="a" type="m">Godlijkheyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">De goetheyt, en de <rhyme label="b" type="m">deught</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Vervoegen, en mijn ziel <rhyme label="a" type="m" corresp="#s4:l1">beschreyt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Weer-stellen in de <rhyme label="b" type="m" corresp="#s4:l2">vreugt</rhyme>;</l>
        <l id="s4:l5" met="4" type="-+">En my tot dankbaerheyt aen <rhyme label="c" type="m">u</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Verplichten, om dat <rhyme label="d" type="m">gy</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Die dus lang zijt geweest soo <rhyme label="c" type="m" corresp="#s4:l5">schu</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Toe-staet mijn <rhyme label="d" type="m" corresp="#s4:l6">vryery</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
