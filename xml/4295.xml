    <melody>Minzaam beeldje amoureus</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="love and sex">liefde en seks</category>
      <category translation="occasions">gelegenheden</category>
    </categories>
  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MInsaem beeldeken <rhyme label="a" type="m">amoureus</rhyme> //</l>
        <l id="s1:l2" met="3" type="-+">Die t'heyrcracht <rhyme label="b" type="m">overwint</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Troostbaer herteken <rhyme label="a" type="m" corresp="#s1:l1">gratieus</rhyme> //</l>
        <l id="s1:l4" met="3" type="-+">Ghy zijt een seedbaer <rhyme label="b" type="m" corresp="#s1:l2">kint</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Gemint // en <rhyme label="c" type="f">wtgelesen</rhyme> //</l>
        <l id="s1:l6" met="3" type="+-">Int wesen // geen als <rhyme label="d" type="m">ghy</rhyme> //</l>
        <l id="s1:l7" met="1" type="+-"><rhyme label="e" type="f">Daeromme</rhyme> //</l>
        <l id="s1:l8" met="1" type="-+">Reyn <rhyme label="e" type="f" corresp="#s1:l7">blomme</rhyme> //</l>
        <l id="s1:l9" met="2" type="-+">Ick comme // tot <rhyme label="d" type="m" corresp="#s1:l6">dy</rhyme> //</l>
        <l id="s1:l10" met="1" type="-+">Mijn <rhyme label="f" type="f">plagen</rhyme> //</l>
        <l id="s1:l11" met="1" type="-+">en <rhyme label="f" type="f" corresp="#s1:l10">clagen</rhyme> //</l>
        <l id="s1:l12" met="2" type="-+">Helpt dragen // met <rhyme label="d" type="m" corresp="#s1:l6">my</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Aerdich, edel, besneden // <rhyme label="a" type="m">rijs</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gesproten <rhyme label="b" type="m">magnifijck</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hester zydy in seden // <rhyme label="a" type="m" corresp="#s2:l1">wijs</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waer is doch ws <rhyme label="b" type="m" corresp="#s2:l2">gelijck</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Aertrijck // vervult dijn <rhyme label="c" type="f">fame</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Eersame // maget <rhyme label="d" type="m">smal</rhyme>:</l>
        <l id="s2:l7" met="1" type="+-">O <rhyme label="e" type="f">puere</rhyme>,</l>
        <l id="s2:l8" met="1" type="-+"><rhyme label="e" type="f" corresp="#s2:l7">Figuere</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">De fluere // van <rhyme label="d" type="m" corresp="#s2:l6">al</rhyme>,</l>
        <l id="s2:l10" met="1" type="-+">O <rhyme label="f" type="f">schoone</rhyme></l>
        <l id="s2:l11" met="1" type="-+"><rhyme label="f" type="f" corresp="#s2:l10">Persoone</rhyme>,</l>
        <l id="s2:l12" met="2" type="-+">De croone // zijn <rhyme label="d" type="m" corresp="#s2:l6">sal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Reyct my heden dijn witte // <rhyme label="a" type="m">hant</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dus lange niet <rhyme label="b" type="m">vertouft</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Mijn teer herte deur hitte // <rhyme label="a" type="m" corresp="#s3:l1">brant</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">D'welck meer dan troost <rhyme label="b" type="m" corresp="#s3:l2">behouft</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Bedrouft // ligh ick ter <rhyme label="c" type="f">neder</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Keert weder // soet <rhyme label="d" type="m">aenschijn</rhyme>:</l>
        <l id="s3:l7" met="1" type="+-"><rhyme label="e" type="f">Oorsake</rhyme>?</l>
        <l id="s3:l8" met="1" type="-+">Dijn <rhyme label="e" type="f" corresp="#s3:l7">sprake</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Heeft smake // soo <rhyme label="d" type="m" corresp="#s3:l6">fijn</rhyme>:</l>
        <l id="s3:l10" met="1" type="-+">Dat <rhyme label="f" type="f">heden</rhyme>,</l>
        <l id="s3:l11" met="1" type="-+">Dijn <rhyme label="f" type="f" corresp="#s3:l10">reden</rhyme>,</l>
        <l id="s3:l12" met="2" type="-+">Gebeden // moet <rhyme label="d" type="m" corresp="#s3:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Is bewesen sulck vrouwen // <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Aen my, in voller <rhyme label="b" type="m">macht</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dat ick uwen getrouwen // <rhyme label="a" type="m" corresp="#s4:l1">knecht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ben aengenaem <rhyme label="b" type="m" corresp="#s4:l2">verwacht</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Den nacht // is dan <rhyme label="c" type="f">verdwenen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Vaert henen // valsch <rhyme label="d" type="m">crackeel</rhyme>:</l>
        <l id="s4:l7" met="1" type="+-">Geen <rhyme label="e" type="f">perten</rhyme></l>
        <l id="s4:l8" met="1" type="-+">En <rhyme label="e" type="f" corresp="#s4:l7">smerten</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Twee herten // <rhyme label="d" type="m" corresp="#s4:l6">geheel</rhyme>,</l>
        <l id="s4:l10" met="1" type="-+">Met <rhyme label="f" type="f">sinnen</rhyme></l>
        <l id="s4:l11" met="1" type="-+">Wy <rhyme label="f" type="f" corresp="#s4:l10">winnen</rhyme></l>
        <l id="s4:l12" met="2" type="-+">Der minnen // <rhyme label="d" type="m" corresp="#s4:l6">casteel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Adieu, minnelick // <rhyme label="a" type="m">cordiael</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Jonck herte, heusch, en <rhyme label="b" type="m">vry</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Die goddinnelick // <rhyme label="a" type="m" corresp="#s5:l1">teenemael</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Mijn vreught zijt even <rhyme label="b" type="m" corresp="#s5:l2">by</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Soo bly // als wy nu <rhyme label="c" type="f">scheyden</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Verbeyden // wilt my <rhyme label="d" type="m">saen</rhyme>:</l>
        <l id="s5:l7" met="1" type="+-">
          <rhyme label="e" type="f">T'onvroede</rhyme>
        </l>
        <l id="s5:l8" met="1" type="-+">Int <rhyme label="e" type="f" corresp="#s5:l7">goede</rhyme></l>
        <l id="s5:l9" met="2" type="-+">Ten bloede // neemt <rhyme label="d" type="m" corresp="#s5:l6">aen</rhyme>,</l>
        <l id="s5:l10" met="1" type="-+">Houdt <rhyme label="f" type="f">stede</rhyme>,</l>
        <l id="s5:l11" met="1" type="-+">In <rhyme label="f" type="f" corresp="#s5:l10">vrede</rhyme>,</l>
        <l id="s5:l12" met="2" type="-+">Hier mede // wy <rhyme label="d" type="m" corresp="#s5:l6">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
