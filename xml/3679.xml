  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GODT is in Iudaea seer <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Bekent end' ouer al <rhyme label="b" type="m">vermaert</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Sijn naem end kracht in <rhyme label="a" type="m" corresp="#s1:l1">Israel</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Sijn gheroemt end <rhyme label="b" type="m" corresp="#s1:l2">gheopenbaert</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">In Salem end tot Zion <rhyme label="c" type="f">schoone</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Staet dat huys fyn van sijner <rhyme label="c" type="f" corresp="#s1:l5">wone</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daer siet men dat hy breeckt seer <rhyme label="a" type="m">kleen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Krachtlick den bogh' end pylen <rhyme label="b" type="m">t'saem</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Schilden, swęerden, end oock met <rhyme label="a" type="m" corresp="#s2:l1">een</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Den krygh met sijn rustingh' <rhyme label="b" type="m" corresp="#s2:l2">bequaem</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">End toont dat hy meer sy te <rhyme label="c" type="f">vruchten</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dan men die straetroouers moet <rhyme label="c" type="f" corresp="#s2:l5">duchten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Slaepende sijn die stoute <rhyme label="a" type="m">saen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Berooft haerer goederen <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die kryghers die op haer kracht <rhyme label="a" type="m" corresp="#s3:l1">staen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Laeten vallen de handen <rhyme label="b" type="m" corresp="#s3:l2">bloot</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Vwen toorn doet haest in slaep <rhyme label="c" type="f">vallen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Pęerden end waghenen met <rhyme label="c" type="f" corresp="#s3:l5">allen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy sijt verschrickelick gaer <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ghy O myn Godt end niemant <rhyme label="b" type="m">el</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wie sal voor v bestaen O <rhyme label="a" type="m" corresp="#s4:l1">Heer</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Wanneer ghy toont v' gramschap <rhyme label="b" type="m" corresp="#s4:l2">fel</rhyme>?</l>
        <l id="s4:l5" met="4" type="-+">Als ghy v' oordeel hebt <rhyme label="c" type="f">ghegeuen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Moet dat ęerdtryck schricken end <rhyme label="c" type="f" corresp="#s4:l5">beuen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dan stondt ghy op, end hebt <rhyme label="a" type="m">verkondt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">V' oordeelen, end ghemaeckt <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die elende ter seluer <rhyme label="a" type="m" corresp="#s5:l1">stondt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">End' hebt die ghetroostet seer <rhyme label="b" type="m" corresp="#s5:l2">bly</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Als die menschen teghen v <rhyme label="c" type="f">stryden</rhyme>:</l>
        <l id="s5:l6" met="4" type="-+">Ghy behaelt eer' aen allen <rhyme label="c" type="f" corresp="#s5:l5">zyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy sult ombringhen t'gansche <rhyme label="a" type="m">rott</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Der woedende boosdaeders <rhyme label="b" type="m">quaet</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Elck doe beloften onsen <rhyme label="a" type="m" corresp="#s6:l1">Godt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">End volbringhe die met der <rhyme label="b" type="m" corresp="#s6:l2">daedt</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Doet sulcks ghy die daer woent <rhyme label="c" type="f">beneuen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Des Heeren woningh' hoogh' <rhyme label="c" type="f" corresp="#s6:l5">verheuen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Bringht Godt gaeuen, die vreeslick <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">End wreeckt sijnensmaedt ende <rhyme label="b" type="m">schandt</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Iae hem die doer sijn kracht <rhyme label="a" type="m" corresp="#s7:l1">ghewis</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Den Koninghen neemt haer <rhyme label="b" type="m" corresp="#s7:l2">verstandt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Die schricklick is end groot van <rhyme label="c" type="f">węerden</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Allen Koninghen op der <rhyme label="c" type="f" corresp="#s7:l5">ęerden</rhyme>.</l>
      </lg>
    </lg>
  </text>
