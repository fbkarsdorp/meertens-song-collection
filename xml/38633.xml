  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">T'is wonder dat de <rhyme label="a" type="m">min</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Heeft soo veel sorghen <rhyme label="a" type="m" corresp="#s1:l1">in</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Sy comt den mensch <rhyme label="b" type="f">verblinden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Sy keert met alle <rhyme label="b" type="f" corresp="#s1:l3">winden</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Ghelijck men <rhyme label="c" type="m">siet</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Een <rhyme label="c" type="m" corresp="#s1:l5">wanckel-riet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Nu recht en dan wer <rhyme label="c" type="m" corresp="#s1:l5">niet</rhyme> !.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Voor desen sprack sy <rhyme label="a" type="m">ja</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Nu weder gheen <rhyme label="a" type="m" corresp="#s2:l1">ghena</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wel seght my <rhyme label="b" type="f">Cupidoken</rhyme>?</l>
        <l id="s2:l4" met="3" type="-+">Waerom dat ghy gaet <rhyme label="b" type="f" corresp="#s2:l3">stoken</rhyme></l>
        <l id="s2:l5" met="2" type="-+">(Tot kort <rhyme label="c" type="m">plasier</rhyme>)</l>
        <l id="s2:l6" met="2" type="-+">Eenstroyen <rhyme label="c" type="m" corresp="#s2:l5">vier</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat haest gaet tot een <rhyme label="c" type="m" corresp="#s2:l5">sier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Vrindinne die ons <rhyme label="a" type="m">jeught</rhyme>?</l>
        <l id="s3:l2" met="3" type="-+">Met minne-licht <rhyme label="a" type="m" corresp="#s3:l1">verheught</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Wins glinster-ooghen <rhyme label="b" type="f">dalen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ghelijck <rhyme label="b" type="f" corresp="#s3:l3">desonne-straelen</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">In't minnaers <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Dat door de <rhyme label="c" type="m" corresp="#s3:l5">smert</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van't vier verblaestert <rhyme label="c" type="m" corresp="#s3:l5">wert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wel suldy van mijn <rhyme label="a" type="m">pijn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Weer gheen gheneester <rhyme label="a" type="m" corresp="#s4:l1">sijn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En suldy noyt mijn <rhyme label="b" type="f">suchten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Eens keeren in <rhyme label="b" type="f" corresp="#s4:l3">ghenuchten</rhyme>!</l>
        <l id="s4:l5" met="2" type="-+">Soo dael ick <rhyme label="c" type="m">af</rhyme></l>
        <l id="s4:l6" met="2" type="-+">(Door uwe <rhyme label="c" type="m" corresp="#s4:l5">straf</rhyme>)</l>
        <l id="s4:l7" met="3" type="-+">Tot in het duyster <rhyme label="c" type="m" corresp="#s4:l5">graf</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mijn liefde die soo <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Was, sal noch naer mijn <rhyme label="a" type="m" corresp="#s5:l1">doot</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Van boven d'hemels <rhyme label="b" type="f">seet'len</rhyme></l>
        <l id="s5:l4" met="3" type="-+">U sieltjen komen <rhyme label="b" type="f" corresp="#s5:l3">keet'len</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">En u met <rhyme label="c" type="m">dach</rhyme></l>
        <l id="s5:l6" met="2" type="-+">En nacht <rhyme label="c" type="m" corresp="#s5:l5">gheclach</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Doen roepen: amy <rhyme label="c" type="m" corresp="#s5:l5">ach</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
