  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Met droefheyt ende <rhyme label="a" type="f">lyden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Is mijn ziele <rhyme label="b" type="m">bevaen</rhyme> /</l>
        <l id="s1:l3" met="3" type="-+">Heere helpt my nu <rhyme label="a" type="f" corresp="#s1:l1">strijden</rhyme> /</l>
        <l id="s1:l4" met="3" type="-+">En wilt my niet aff <rhyme label="b" type="m" corresp="#s1:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Mensche wildi my <rhyme label="a" type="f">behaegen</rhyme>/</l>
        <l id="s2:l2" met="3" type="-+">Soo moet ghij ierst voor <rhyme label="b" type="m">al</rhyme></l>
        <l id="s2:l3" met="3" type="-+">U cruyce opheffen en <rhyme label="a" type="f" corresp="#s2:l1">draegen</rhyme> /</l>
        <l id="s2:l4" met="3" type="-+">Dwelck ick u zenden <rhyme label="b" type="m" corresp="#s2:l2">zal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Myn cruyce wille ic gaern <rhyme label="a" type="f">dragen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Gheeft my heere de <rhyme label="b" type="m">cracht</rhyme> /</l>
        <l id="s3:l3" met="3" type="-+">Om ziele ende lyf te <rhyme label="a" type="f" corresp="#s3:l1">wagen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Want cleyn zoe is myn <rhyme label="b" type="m" corresp="#s3:l2">macht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Myn gracie zal ick u <rhyme label="a" type="f">geven</rhyme> /</l>
        <l id="s4:l2" met="3" type="-+">Wildy my volgen <rhyme label="b" type="m">vry</rhyme> /</l>
        <l id="s4:l3" met="3" type="-+">Betert altyt u <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Betrouwt dan vast op <rhyme label="b" type="m" corresp="#s4:l2">my</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wilt heere myn herteken <rhyme label="a" type="f">stercken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Tes bedroeft al totter <rhyme label="b" type="m">doot</rhyme> /</l>
        <l id="s5:l3" met="3" type="-+">Ghy alleen Heere condt <rhyme label="a" type="f" corresp="#s5:l1">mercken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Mynen grooten <rhyme label="b" type="m" corresp="#s5:l2">noot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ter noot zoe zal ick <rhyme label="a" type="f">comen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Maer ten wille <rhyme label="b" type="m">nyet</rhyme> /</l>
        <l id="s6:l3" met="3" type="-+">Myn gracie zal u <rhyme label="a" type="f" corresp="#s6:l1">vromen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In u lyden en <rhyme label="b" type="m" corresp="#s6:l2">verdriet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ick zoude liever <rhyme label="a" type="f">sterven</rhyme></l>
        <l id="s7:l2" met="3" type="-+">O Heere <rhyme label="b" type="m">gebenedyt</rhyme> /</l>
        <l id="s7:l3" met="3" type="-+">Dan ick u zoude <rhyme label="a" type="f" corresp="#s7:l1">derven</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Eenen cleynen <rhyme label="b" type="m" corresp="#s7:l2">tyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Weest cleyne in uwen <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">U gebreken oetmoedelyck <rhyme label="b" type="m">kint</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Zy moeten lyden en <rhyme label="a" type="f" corresp="#s8:l1">dooghen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Die van my zyn <rhyme label="b" type="m" corresp="#s8:l2">bemint</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Heere Jesus laet my u <rhyme label="a" type="f">kinnen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Ende gheeft my toch dat <rhyme label="b" type="m">een</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Dat ghy in myn vyf <rhyme label="a" type="f" corresp="#s9:l1">zinnen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Rusten moeght <rhyme label="b" type="m" corresp="#s9:l2">alleen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dat een zal u <rhyme label="a" type="f">gebeuren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Maer het moet ierst zyn <rhyme label="b" type="m">besuert</rhyme></l>
        <l id="s10:l3" met="3" type="-+">En wilt niet claegen en <rhyme label="a" type="f" corresp="#s10:l1">treuren</rhyme></l>
        <l id="s10:l4" met="3" type="-+">U herteken tot my <rhyme label="b" type="m" corresp="#s10:l2">stuert</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ick wille my <rhyme label="a" type="f">resigneren</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Heere onder den wille <rhyme label="b" type="m">dyn</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Laet uwen gheest my <rhyme label="a" type="f" corresp="#s11:l1">regeren</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Zoe zal ick zaelich <rhyme label="b" type="m" corresp="#s11:l2">zyn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Vertroost u in u <rhyme label="a" type="f">lyden</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Nempt moet in u <rhyme label="b" type="m">verdriet</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Die inde werelt hen <rhyme label="a" type="f" corresp="#s12:l1">verblyden</rhyme> /</l>
        <l id="s12:l4" met="3" type="-+">Dat en zyn myn kinderen <rhyme label="b" type="m" corresp="#s12:l2">nyet</rhyme>.</l>
      </lg>
    </lg>
  </text>
