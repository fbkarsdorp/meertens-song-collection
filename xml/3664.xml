  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALS ick roep' verstaet myn <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Myn <rhyme label="a" type="f" corresp="#s1:l1">ghebeden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">O Godt verhoort n't <rhyme label="b" type="m">ghemeyn</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Myn siel' met angst beswaert <rhyme label="c" type="f">seere</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Tot v <rhyme label="c" type="f" corresp="#s1:l4">Heere</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Heeft haeren toevlucht <rhyme label="b" type="m" corresp="#s1:l3">alleyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Op een steenrots Heer <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Laett my <rhyme label="a" type="f" corresp="#s2:l1">wesen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Ghestelt, daer ick vry sijn <rhyme label="b" type="m">sal</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Ghy sijt myn' toevlucht <rhyme label="c" type="f">beuonden</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">T'allen <rhyme label="c" type="f" corresp="#s2:l4">stonden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Teghen myn vianden <rhyme label="b" type="m" corresp="#s2:l3">al</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In uwen tempel seer <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Is myn <rhyme label="a" type="f" corresp="#s3:l1">woone</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Altydt O Godt met <rhyme label="b" type="m">ootmoedt</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Onder v' vleughelen <rhyme label="c" type="f">sijnde</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Ick <rhyme label="c" type="f" corresp="#s3:l4">beuinde</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Toevlucht end beschermingh' <rhyme label="b" type="m" corresp="#s3:l3">goedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want ghy gheeft my Heer <rhyme label="a" type="f">ghenaedigh</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">End <rhyme label="a" type="f" corresp="#s4:l1">ghestaedigh</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Al myn beghÄ™rten niet <rhyme label="b" type="m">kleyn</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Want ghy laett my Heer <rhyme label="c" type="f">toekomen</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Aller <rhyme label="c" type="f" corresp="#s4:l4">vromen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Erfdeel, die v vreesen <rhyme label="b" type="m" corresp="#s4:l3">reyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ghy sult die jaeren <rhyme label="a" type="f">vermeeren</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">End <rhyme label="a" type="f" corresp="#s5:l1">vereeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Vwes Koninghs <rhyme label="b" type="m">openbaer</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">So dat hy vast sal <rhyme label="c" type="f">beklyuen</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Ende <rhyme label="c" type="f" corresp="#s5:l4">blyuen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Noch menigh gheslacht end <rhyme label="b" type="m" corresp="#s5:l3">jaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Voor v oock Heer <rhyme label="a" type="f">desghelycke</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Sal sijn <rhyme label="a" type="f" corresp="#s6:l1">rycke</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">sekerlick end vast <rhyme label="b" type="m">bestaen</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Dat v' waerheit end <rhyme label="c" type="f">ghenaede</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Vroegh end <rhyme label="c" type="f" corresp="#s6:l4">spaede</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Dat behoede nu voort <rhyme label="b" type="m" corresp="#s6:l3">aen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">So sal ick uwen lof <rhyme label="a" type="f">singhen</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">End <rhyme label="a" type="f" corresp="#s7:l1">voortbringhen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">End groot maeken uwen <rhyme label="b" type="m">naem</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Ick sal met vliet dan <rhyme label="c" type="f">betaelen</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Sonder <rhyme label="c" type="f" corresp="#s7:l4">draelen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Myn beloften Heer' al <rhyme label="b" type="m" corresp="#s7:l3">t'saem</rhyme>.</l>
      </lg>
    </lg>
  </text>
