  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LIefste Lief ick kom' hier <rhyme label="a" type="f">weder</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Om aen uw' ghelaet te <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Oft het nu is schoonder <rhyme label="a" type="f" corresp="#s1:l1">weder</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Oft gy thoont een soeter <rhyme label="b" type="m" corresp="#s1:l2">mien</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Oft uw' stuerheydt is <rhyme label="c" type="f">verdwenen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Die noyt Minnaer en <rhyme label="d" type="m">verwon</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Oft den dagh nu is <rhyme label="c" type="f" corresp="#s1:l5">verschenen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Met een aen-ghenamer <rhyme label="d" type="m" corresp="#s1:l6">Son</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Komdy my weer van uw <rhyme label="a" type="f">saken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Buylen kouten in den <rhyme label="b" type="m">kop</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En den Baslos-Manus <rhyme label="a" type="f" corresp="#s2:l1">maken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Schelen Huyben komt, kraemt <rhyme label="b" type="m" corresp="#s2:l2">op</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ghy en moet gheen Vrysters <rhyme label="c" type="f">pramen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Gaet togh deur ghy <rhyme label="d" type="m">Serviteur</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Oft en wildy niet <rhyme label="c" type="f" corresp="#s2:l5">op-kramen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">'k Sal u keiren van myn <rhyme label="d" type="m" corresp="#s2:l6">deur</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Is't dat gyhebt <rhyme label="a" type="f">voor-genomen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">My te stooten door d'een <rhyme label="b" type="m">deur</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">'k Sal langs d'ander deur <rhyme label="a" type="f" corresp="#s3:l1">in-komen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Al stondt Hannen-uyt daer <rhyme label="b" type="m" corresp="#s3:l2">veur</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Al speeldy den <rhyme label="c" type="f">obstinaten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">'k Sal u minnen tot der <rhyme label="d" type="m">doodt</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Ick en sal u niet <rhyme label="c" type="f" corresp="#s3:l5">verlaten</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Want myn liefden is te <rhyme label="d" type="m" corresp="#s3:l6">groot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Jongh-man ghy zyt wel <rhyme label="a" type="f">beraden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Dat ghy my weer <rhyme label="b" type="m">pretendeert</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Ick sal zyn uw' <rhyme label="a" type="f" corresp="#s4:l1">weder-gade</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Om dat ghy <rhyme label="b" type="m" corresp="#s4:l2">persevereert</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Om dat gy blyft even <rhyme label="c" type="f">brandigh</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Naer uw' langh ghewenschte <rhyme label="d" type="m">Vrouw</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Om dat ghy blyft soo <rhyme label="c" type="f" corresp="#s4:l5">volstandig</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Schenck ick u myn hert' op <rhyme label="d" type="m" corresp="#s4:l6">trouw</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">'t Boomken valt den eersten slagh <rhyme label="a" type="f">niet</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Al is 't dat m'er styf'op <rhyme label="b" type="m">slaet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Noch men kryght den eersten dagh <rhyme label="a" type="f" corresp="#s5:l1">niet</rhyme></l>
        <l id="s5:l4" met="4" type="+-">De Nymph' die men vryen <rhyme label="b" type="m" corresp="#s5:l2">gaet</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Maer met aerbeyt en met <rhyme label="c" type="f">hygen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Met te blyven heel <rhyme label="d" type="m">constant</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Sal-men vier uyt steenen <rhyme label="c" type="f" corresp="#s5:l5">krygen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">En uyt koele Vrysters <rhyme label="d" type="m" corresp="#s5:l6">brandt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">O Lief-hebber in uw' <rhyme label="a" type="f">segghen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Hebdy meerder als <rhyme label="b" type="m">ghelyck</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ick en kan 't niet <rhyme label="a" type="f" corresp="#s6:l1">weder-legghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Ghy spreckt wel en <rhyme label="b" type="m" corresp="#s6:l2">wysselyck</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Die kan naer syn Vryster <rhyme label="c" type="f">wachten</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">En haer dient soo hy <rhyme label="d" type="m">vermagh</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Kryght eens naer syn droeve <rhyme label="c" type="f" corresp="#s6:l5">nachten</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Eenen blyden Bruyloft <rhyme label="d" type="m" corresp="#s6:l6">dagh</rhyme>.</l>
      </lg>
    </lg>
  </text>
