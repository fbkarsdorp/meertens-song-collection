  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">'t IS goet dat elk den <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Steeds loove, en uwen <rhyme label="b" type="m">naam</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met psalmgezang <rhyme label="b" type="m" corresp="#s1:l2">bequaam</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">ô Allerhoogste, ook <rhyme label="a" type="f" corresp="#s1:l1">eere</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Dat elk uw goedheit <rhyme label="c" type="f">pryze</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">De trouw van uw <rhyme label="d" type="m">verbondt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Vroeg in den <rhyme label="d" type="m" corresp="#s1:l6">morgenstondt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En 's nachts u eer <rhyme label="c" type="f" corresp="#s1:l5">bewyze</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Op 't speeltuig van tien <rhyme label="a" type="f">snaaren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En 't roeren van de <rhyme label="b" type="m">luit</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En op de harpe en <rhyme label="b" type="m" corresp="#s2:l2">fluit</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wilt 's Heeren lof <rhyme label="a" type="f" corresp="#s2:l1">verklaaren</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Want gy komt my <rhyme label="c" type="f">verblyden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Met uwe daaden, <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">'k Zal juichen t'uwer <rhyme label="d" type="m" corresp="#s2:l6">eer</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En uwe magt <rhyme label="c" type="f" corresp="#s2:l5">belyden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe groot zyn uwe <rhyme label="a" type="f">werken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O Heer, die gy <rhyme label="b" type="m">verricht</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">'t Heil dat gy hebt <rhyme label="b" type="m" corresp="#s3:l2">gesticht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Door niemant te <rhyme label="a" type="f" corresp="#s3:l1">beperken</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Zeer diep zyn uw <rhyme label="c" type="f">gedachten</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Een onvernuftig <rhyme label="d" type="m">man</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Noch dwaashoofdt weet 'er <rhyme label="d" type="m" corresp="#s3:l6">van</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Om haar naar waarde <rhyme label="c" type="f" corresp="#s3:l5">t'achten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dat hier de boozen <rhyme label="a" type="f">groeien</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Als 't groene kruidt op 't <rhyme label="b" type="m">veldt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Bedryvers van <rhyme label="b" type="m" corresp="#s4:l2">gewelt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En onrechtwerkers <rhyme label="a" type="f" corresp="#s4:l1">bloeien</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Is om in <rhyme label="c" type="f">eeuwigheden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Verdelgt te worden. <rhyme label="d" type="m">maar</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Gy zyt de hoogste, <rhyme label="d" type="m" corresp="#s4:l6">daar</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Gy eeuwig wordt <rhyme label="c" type="f" corresp="#s4:l5">beleden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Want zie, ô Heer, uw <rhyme label="a" type="f">haters</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En vyanden <rhyme label="b" type="m">vergaan</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Zoodat ze niet <rhyme label="b" type="m" corresp="#s5:l2">bestaan</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Als snoode <rhyme label="a" type="f" corresp="#s5:l1">Godtverlaters</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Gy zult hun magt <rhyme label="c" type="f">verstrooien</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Daar gy myn' hoorn met <rhyme label="d" type="m">kracht</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Als 't fier <rhyme label="d" type="m" corresp="#s5:l6">eenhoorngeslacht</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Verhoogt, by hun <rhyme label="c" type="f" corresp="#s5:l5">verschooien</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Myn hoofdt is <rhyme label="a" type="f">overgooten</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Met oli, versch en <rhyme label="b" type="m">groen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ik zal myn oogen <rhyme label="b" type="m" corresp="#s6:l2">voên</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In 't leet der <rhyme label="a" type="f" corresp="#s6:l1">vloekgenooten</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Myne ooren zullen <rhyme label="c" type="f">hooren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Het lyden dat dien <rhyme label="d" type="m">treft</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Die stout den kop <rhyme label="d" type="m" corresp="#s6:l6">verheft</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Om mynen vreê te <rhyme label="c" type="f" corresp="#s6:l5">stooren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">'t Rechtvaardig volk zal <rhyme label="a" type="f">bloeien</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Gelyk de palmbooms <rhyme label="b" type="m">top</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">'t Zal als een ceder <rhyme label="b" type="m" corresp="#s7:l2">op</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Den Libanon ook <rhyme label="a" type="f" corresp="#s7:l1">groeien</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Zy, die in 't huis des <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Geplant zyn, zullen <rhyme label="d" type="m">daar</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Hem met zyn <rhyme label="d" type="m" corresp="#s7:l6">priesterschaar</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">In zynen voorhof <rhyme label="c" type="f" corresp="#s7:l5">eeren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Zy zullen, hoog van <rhyme label="a" type="f">jaaren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En in den <rhyme label="b" type="m">ouderdom</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Noch vruchten draagen, <rhyme label="b" type="m" corresp="#s8:l2">om</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Godts waarheit te <rhyme label="a" type="f" corresp="#s8:l1">verklaaren</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Zy zullen weelig <rhyme label="c" type="f">ryzen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En vet zyn. want Godt <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Gansch recht, in 't woordt <rhyme label="d" type="m" corresp="#s8:l6">gewis</rhyme>;</l>
        <l id="s8:l8" met="3" type="-+">Myn rotssteen, hoog te <rhyme label="c" type="f" corresp="#s8:l5">pryzen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
