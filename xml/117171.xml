  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">’t Is waer ick verlaet het <rhyme label="a" type="m">Vaderlant</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En u mijn Lief mijn tweede <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Maer oordeelt niet mijn waerde <rhyme label="a" type="m" corresp="#s1:l1">pant</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat u Minnaer u sal <rhyme label="b" type="f" corresp="#s1:l2">begeven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Al treckt mijn lijf op <rhyme label="c" type="m">zee</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">’t Is maer de helft van <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Mijn ziel en reyst niet <rhyme label="c" type="m" corresp="#s1:l5">mee</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Al treckt mijn lijf op <rhyme label="c" type="m" corresp="#s1:l5">zee</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">’t Is maer de helft van <rhyme label="d" type="m" corresp="#s1:l6">my</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Mijn liefde blijft u <rhyme label="d" type="m" corresp="#s1:l6">by</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer laes mijn sugjes zijn om <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s2:l2" met="4" type="-+">De windt vervoert u uyt mijn <rhyme label="b" type="f">oogen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ick mis u Lief u ziels <rhyme label="a" type="m" corresp="#s2:l1">verdriet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ag ag hoe vind ik mijn <rhyme label="b" type="f" corresp="#s2:l2">bedroogen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Of dunckt u mijn <rhyme label="c" type="m">gelaet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Soo schoon niet was als <rhyme label="d" type="m">eer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Verkeert u min in <rhyme label="c" type="m" corresp="#s2:l5">haet</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Of dunck u mijn <rhyme label="c" type="m" corresp="#s2:l5">gelaet</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Veel schoonder was wel <rhyme label="d" type="m" corresp="#s2:l6">eer</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">’t Geschiede <rhyme label="d" type="m" corresp="#s2:l6">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn waerde schoon de Winden <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Uyt u gesigte weg doe <rhyme label="b" type="f">vliegen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">So straffen my de Goden <rhyme label="a" type="m" corresp="#s3:l1">vry</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Indien ick u soeck te <rhyme label="b" type="f" corresp="#s3:l2">bedriegen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Gelooft dan daer niet <rhyme label="c" type="m">an</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat oyt mijn trouwe <rhyme label="d" type="m">Min</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">In haet veranderen <rhyme label="c" type="m" corresp="#s3:l5">kan</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Gelooft dan daer niet <rhyme label="c" type="m" corresp="#s3:l5">an</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Dat oyt mijn trouwe <rhyme label="d" type="m" corresp="#s3:l6">Min</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Sal wijcken uyt mijn <rhyme label="d" type="m" corresp="#s3:l6">sin</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick sal aen uwe syde <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">In tijdt van storm en <rhyme label="b" type="f">Oorlogs-vlagen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En met u door den Vyant <rhyme label="a" type="m" corresp="#s4:l1">slaen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Om d’ondruckte t’ <rhyme label="b" type="f" corresp="#s4:l2">onderschragen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Mijn hert dat kermt en <rhyme label="c" type="m">sugt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">’t Zwerft met u door de <rhyme label="d" type="m">Zee</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Als Vogelen in de <rhyme label="c" type="m" corresp="#s4:l5">lugt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Mijn hert dat kermt en <rhyme label="c" type="m" corresp="#s4:l5">sugt</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">’t Zwerft met u door de <rhyme label="d" type="m" corresp="#s4:l6">Zee</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Ag keert en neemt my <rhyme label="d" type="m" corresp="#s4:l6">mee</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ag Engel staekt dog uwen <rhyme label="a" type="m">rouw</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En wilt u tranen maer af <rhyme label="b" type="f">drogen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ick sal u eeuwig zijn <rhyme label="a" type="m" corresp="#s5:l1">getrouw</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En so ras als ick heb <rhyme label="b" type="f" corresp="#s5:l2">vermogen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Sal ick weer by u <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Geeft mijn dan voor ’t <rhyme label="d" type="m">afscheyt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Een kus nog liefste <rhyme label="c" type="m" corresp="#s5:l5">mijn</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">ik sal haest by u <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Ick bid u niet meer <rhyme label="d" type="m" corresp="#s5:l6">schreyt</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Of al mijn moet die <rhyme label="d" type="m" corresp="#s5:l6">eynt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Eylaes daer is een droeve <rhyme label="a" type="m">kus</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Wel haestig voor het lest <rhyme label="b" type="f">gegeven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En vrees dat ick u die <rhyme label="a" type="m" corresp="#s6:l1">aldus</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Nu oock sal geven voor u <rhyme label="b" type="f" corresp="#s6:l2">leven</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Och Lief mijn waerde <rhyme label="c" type="m">pant</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Mijn hert dat breekt aen <rhyme label="d" type="m">stuk</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ick sal raken van <rhyme label="c" type="m" corresp="#s6:l5">kant</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">So ras gy zijt van <rhyme label="c" type="m" corresp="#s6:l5">Lant</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Mijn hert dat breekt aen <rhyme label="d" type="m" corresp="#s6:l6">stuk</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Laet gy mijn in den <rhyme label="d" type="m" corresp="#s6:l6">druck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O hart en droevig scheyden <rhyme label="a" type="m">dan</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat ick u sal moeten <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Ach troost u maer so veel gy <rhyme label="a" type="m" corresp="#s7:l1">kan</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En neemt den Hemel tot u <rhyme label="b" type="f" corresp="#s7:l2">baten</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En schoon dat door den <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Als ick nu van u <rhyme label="d" type="m">vliet</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Mijn overviel de <rhyme label="c" type="m" corresp="#s7:l5">doodt</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">So denckt die harde <rhyme label="c" type="m" corresp="#s7:l5">stoot</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Door Godes wil <rhyme label="d" type="m" corresp="#s7:l6">geschiet</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">En namaels weder <rhyme label="d" type="m" corresp="#s7:l6">siet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel gaet dan in des Heeren <rhyme label="a" type="m">naem</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ick hoop hy sal u Leydsman <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En draegt u over al <rhyme label="a" type="m" corresp="#s8:l1">bequaem</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Ick sal my toonen als voor <rhyme label="b" type="f" corresp="#s8:l2">desen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Altijt in liefde <rhyme label="c" type="m">trouw</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">So lang gy van my <rhyme label="d" type="m">zijt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Adieu mijn Engel <rhyme label="c" type="m" corresp="#s8:l5">nou</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Ick sal u zijn <rhyme label="c" type="m" corresp="#s8:l5">getrou</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Tot dat de doodt ons <rhyme label="d" type="m" corresp="#s8:l6">scheyt</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Adieu in <rhyme label="d" type="m" corresp="#s8:l6">eeuwigheyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Vaer wel mijn Lief ick sal midden <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Het Oorlogs-vier hier op <rhyme label="b" type="f">vertrouwen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dat mijn de gunst van mijn <rhyme label="a" type="m" corresp="#s9:l1">Godin</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">In ’t grootst gevaer wel kan <rhyme label="b" type="f" corresp="#s9:l2">behouwen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Mijn Engel weent niet <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Ag staeck u droef <rhyme label="d" type="m">gesugt</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">U Minnaer keert haest <rhyme label="c" type="m" corresp="#s9:l5">weer</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Mijn Engel weent niet <rhyme label="c" type="m" corresp="#s9:l5">meer</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Ag staeckt u droef <rhyme label="d" type="m" corresp="#s9:l6">gesugt</rhyme>,</l>
        <l id="s9:l10" met="3" type="-+">Eer my de Ziel <rhyme label="d" type="m" corresp="#s9:l6">ontvlugt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
