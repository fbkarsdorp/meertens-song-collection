  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">PHilis als gy eens <rhyme label="a" type="m">besiet</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Uw volmaaktheyt in een <rhyme label="b" type="f">spiegel</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Soo betrouw u schoonheyt <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maer weet dat uw <rhyme label="c" type="m">gesigt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Daar nu yder een voor <rhyme label="c" type="m" corresp="#s1:l4">swigt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Niet meer is als 't brosse <rhyme label="d" type="m">glas</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Dat uw schoonheyts spiegel <rhyme label="d" type="m" corresp="#s1:l6">was</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Lieve kint besint het <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Wilt op uw getijtje <rhyme label="b" type="f">passen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Want de jaartjes vliegen <rhyme label="a" type="m" corresp="#s2:l1">snel</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Al uwe trots, en <rhyme label="c" type="m">roem</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Is niet anders als een <rhyme label="c" type="m" corresp="#s2:l4">bloem</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En och in hoe korten <rhyme label="d" type="m">tijt</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Is een bloempje haer luyster <rhyme label="d" type="m" corresp="#s2:l6">quijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gelooft het, eer het is te <rhyme label="a" type="m">laat</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat het bloosjen van uw <rhyme label="b" type="f">wangen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Als een roosjen hene <rhyme label="a" type="m" corresp="#s3:l1">gaat</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En dat de <rhyme label="c" type="m">sonneschijn</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Van uw lieffelijk <rhyme label="c" type="m" corresp="#s3:l4">aanschijn</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Haastelijk sal onder <rhyme label="d" type="m">gaan</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Sonder oyt weer op te <rhyme label="d" type="m" corresp="#s3:l6">staan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Alsoo lang de <rhyme label="a" type="m">mogentheyt</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Van uw oogen my <rhyme label="b" type="f">betoovert</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Ben ik tot uw dienst <rhyme label="a" type="m" corresp="#s4:l1">bereyt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Maar als de soete <rhyme label="c" type="m">lent</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Van uw schoonheyt loopt ten <rhyme label="c" type="m" corresp="#s4:l4">endt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Soo verseker ik 't nu <rhyme label="d" type="m">al</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Dat mijn liefde sterven <rhyme label="d" type="m" corresp="#s4:l6">sal</rhyme>.</l>
      </lg>
    </lg>
  </text>
