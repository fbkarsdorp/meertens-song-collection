  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O klapperige <rhyme label="a" type="m">Coridon</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe salmen u <rhyme label="b" type="f">afmalen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Soo dicht als een gebroken <rhyme label="a" type="m" corresp="#s1:l1">ton</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hoe komje aldus te <rhyme label="b" type="f" corresp="#s1:l2">dwalen</rhyme>?</l>
        <l id="s1:l5" met="2" type="-+">Mopse hoe <rhyme label="c" type="m">soo</rhyme>?</l>
        <l id="s1:l6" met="2" type="-+">Niet al te <rhyme label="c" type="m" corresp="#s1:l5">snoo</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hoe kondy dit <rhyme label="b" type="f" corresp="#s1:l2">vertalen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Amarillis mijn liefste <rhyme label="a" type="m">kaer</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hebje my gemaeckt <rhyme label="b" type="f">tegen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hey Coridon dat valt my <rhyme label="a" type="m" corresp="#s2:l1">swaer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Veel beter hadstu <rhyme label="b" type="f" corresp="#s2:l2">geswegen</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Mopse â€˜t is <rhyme label="c" type="m">waer</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Ghy kalde van <rhyme label="c" type="m" corresp="#s2:l5">haer</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Niet soo reyn Herders <rhyme label="b" type="f" corresp="#s2:l2">plegen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wel Coridon mijn lieve <rhyme label="a" type="m">maet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Kenstu geen Vryers <rhyme label="b" type="f">treken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die somtijdts om een ander <rhyme label="a" type="m" corresp="#s3:l1">baet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ter zijden wat <rhyme label="b" type="f" corresp="#s3:l2">uytbreken</rhyme>?</l>
        <l id="s3:l5" met="2" type="-+">In Mopse <rhyme label="c" type="m">ja</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Ick weet wel hoe <rhyme label="c" type="m" corresp="#s3:l5">na</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En hoe reyn Herders <rhyme label="b" type="f" corresp="#s3:l2">spreken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ey Coridon ey Herder <rhyme label="a" type="m">dom</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wilstu voortaen niet <rhyme label="b" type="f">swijgen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Soo wil ick tegen dy <rhyme label="a" type="m" corresp="#s4:l1">daerom</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Plockhayren hart met <rhyme label="b" type="f" corresp="#s4:l2">vijgen</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Herdertje <rhyme label="c" type="m">licht</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Houdy vrij <rhyme label="c" type="m" corresp="#s4:l5">dicht</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Du selst Amaril niet <rhyme label="b" type="f" corresp="#s4:l2">krijgen</rhyme>.</l>
      </lg>
    </lg>
