    <melody>Meisje moet ik bij u slapen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Iacomijn ick moet 'et <rhyme label="a" type="f">klaghen</rhyme></l>
        <l id="s1:l2" met="6" type="+-">Wat een over-groot verdriet // my <rhyme label="b" type="m">gheschiede</rhyme></l>
        <l id="s1:l3" met="4" type="-+">'k En kan 't niet meer <rhyme label="a" type="f" corresp="#s1:l1">verdraghen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">'t Is oock om te lijen <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Trijn hoe meught' u dus <rhyme label="a" type="f">ontstellen</rhyme>,</l>
        <l id="s2:l2" met="6" type="+-">Waer in benje soo verbaest // datje <rhyme label="b" type="m">raest</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">En wilt 't my wat ras <rhyme label="a" type="f" corresp="#s2:l1">vertellen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Seeper, 'k heb soo grooten <rhyme label="b" type="m" corresp="#s2:l2">haest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Iae 'k en kantje qualijck <rhyme label="a" type="f">segghen</rhyme>,</l>
        <l id="s3:l2" met="6" type="+-">Mijn Stief-vaer dien ouden Drent // wel <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die gaet my dit verdriet op <rhyme label="a" type="f" corresp="#s3:l1">legghen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Is dat niet een zwaer <rhyme label="b" type="m" corresp="#s3:l2">torment</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want ick sou soo garen <rhyme label="a" type="f">trouwen</rhyme></l>
        <l id="s4:l2" met="6" type="+-">Met een Quant die my staegh mint // en <rhyme label="b" type="m">besint</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">En siet hier wil hy my af <rhyme label="a" type="f" corresp="#s4:l1">houwen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Is de Geck niet wel <rhyme label="b" type="m" corresp="#s4:l2">verblindt</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">En mijn Moeder oudt van <rhyme label="a" type="f">daghen</rhyme>,</l>
        <l id="s5:l2" met="6" type="+-">Heeft 'et al gheconsenteert // en <rhyme label="b" type="m">begheert</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En dees Ian-hen, vol loose <rhyme label="a" type="f" corresp="#s5:l1">laghen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Drijft de saeck nou heel <rhyme label="b" type="m" corresp="#s5:l2">verkeert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Waer dat jy mee bent <rhyme label="a" type="f">verleghen</rhyme>,</l>
        <l id="s6:l2" met="6" type="+-">'k Had de bruts van mijn Stief-vaer // jae 'k <rhyme label="b" type="m">voorwaer</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Benj' alle bey daer toe <rhyme label="a" type="f" corresp="#s6:l1">gheneghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Gheeft om niemandt niet een <rhyme label="b" type="m" corresp="#s6:l2">hayr</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Iae mijn Vrijer vroom en <rhyme label="a" type="f">eerlijck</rhyme>,</l>
        <l id="s7:l2" met="6" type="+-">Is tot trouwen alle daegh // even <rhyme label="b" type="m">graegh</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">En ick ben oock daer toe <rhyme label="a" type="f" corresp="#s7:l1">begheerlijck</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">'t Is gheen wonder dat ick <rhyme label="b" type="m" corresp="#s7:l2">klaegh</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Want ick segh jou <rhyme label="a" type="f">Iacomijntje</rhyme>,</l>
        <l id="s8:l2" met="6" type="+-">'t Is een Quant soo pertinent // en soo <rhyme label="b" type="m">jent</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat self een stil devoot <rhyme label="a" type="f" corresp="#s8:l1">Bagijntje</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Sou verquicken noch in 't <rhyme label="b" type="m" corresp="#s8:l2">endt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Al de Naetjes van sijn <rhyme label="a" type="f">Kleeren</rhyme></l>
        <l id="s9:l2" met="6" type="+-">Zijn gheboordt met kost'lijck fijn // Zy <rhyme label="b" type="m">Satijn</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">En soo een Ionghman mocht <rhyme label="a" type="f" corresp="#s9:l1">t'ontbeeren</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Waer 'et niet om Dul te <rhyme label="b" type="m" corresp="#s9:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Wel ick hebje raedt <rhyme label="a" type="f">ghegheven</rhyme>,</l>
        <l id="s10:l2" met="6" type="+-">Houdt die raedt en weest te vreen // ick gae <rhyme label="b" type="m">heen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ist sulcken gheestigh Quant, nae 't <rhyme label="a" type="f" corresp="#s10:l1">leven</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Seght maer Iae in plaets van <rhyme label="b" type="m" corresp="#s10:l2">Nee</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Wel voorseecker 'k selt gaen <rhyme label="a" type="f">waghen</rhyme>,</l>
        <l id="s11:l2" met="6" type="+-">'k Hou de raedt die ghy daer seght // voor <rhyme label="b" type="m">oprecht</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">Wel jae, 't is immers jou <rhyme label="a" type="f" corresp="#s11:l1">behaghen</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Doeje 't niet, soo benje <rhyme label="b" type="m" corresp="#s11:l2">slecht</rhyme>.</l>
      </lg>
    </lg>
  </text>
