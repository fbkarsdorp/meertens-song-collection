    <melody>Schoon liefje jent zeer excellent</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">ZOoseer <rhyme label="a" type="m">bemindt</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Was en <rhyme label="a" type="m" corresp="#s1:l1">gesindt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Thomas, in 't hart des <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Dat hy de'es <rhyme label="c" type="m">heldt</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Apostel <rhyme label="c" type="m" corresp="#s1:l4">stelt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Om op dit aerdtsche <rhyme label="c" type="m" corresp="#s1:l4">veldt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Om op dit aerdtsche <rhyme label="c" type="m" corresp="#s1:l4">veldt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Volck oudt, en jonck te <rhyme label="b" type="f" corresp="#s1:l3">leeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Als Thomas <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Dat Christus <rhyme label="a" type="m" corresp="#s2:l1">voort</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Reysde na 't Landt der <rhyme label="b" type="f">Ioden</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Om met sijn <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">En liefde <rhyme label="c" type="m" corresp="#s2:l4">kracht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Lazarus doodt, uyt <rhyme label="c" type="m" corresp="#s2:l4">gracht</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Lazarus doodt, uyt <rhyme label="c" type="m" corresp="#s2:l4">gracht</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Tot leve we'er te <rhyme label="b" type="f" corresp="#s2:l3">noden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Thomas <rhyme label="a" type="m">betrout</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Op hem; spreeckt <rhyme label="a" type="m" corresp="#s3:l1">stout</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">'t Sa, laet ons gaen en <rhyme label="b" type="f">sterven</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Met onse <rhyme label="c" type="m">Heer</rhyme>;</l>
        <l id="s3:l5" met="2" type="-+">Geen grooter <rhyme label="c" type="m" corresp="#s3:l4">eer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Nochte verdiensten <rhyme label="c" type="m" corresp="#s3:l4">meer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Nochte verdiensten <rhyme label="c" type="m" corresp="#s3:l4">meer</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Sullen wy oyt <rhyme label="b" type="f" corresp="#s3:l3">verwerven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Zijn vroomheydt <rhyme label="a" type="m">ras</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Breeckt gelijck <rhyme label="a" type="m" corresp="#s4:l1">glas</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Als Christus was <rhyme label="b" type="f">verreesen</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Hem <rhyme label="c" type="m">openbaert</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Dit woordt <rhyme label="c" type="m" corresp="#s4:l4">verklaert</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Vrede; weest niet <rhyme label="c" type="m" corresp="#s4:l4">vervaert</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Vrede; weest niet <rhyme label="c" type="m" corresp="#s4:l4">vervaert</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Ick ben 't, en wilt niet <rhyme label="b" type="f" corresp="#s4:l3">vreesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Thomas was <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Als dit <rhyme label="a" type="m" corresp="#s5:l1">geschiet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">By sijn <rhyme label="b" type="f">medegesellen</rhyme>.</l>
        <l id="s5:l4" met="2" type="-+">Als hy daer <rhyme label="c" type="m">naer</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Komt we'er by <rhyme label="c" type="m" corresp="#s5:l4">haer</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Met blydtschap <rhyme label="c" type="m" corresp="#s5:l4">allegaer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Met blydtschap <rhyme label="c" type="m" corresp="#s5:l4">allegaer</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">D' History hem <rhyme label="b" type="f" corresp="#s5:l3">vertellen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Thomas blijft <rhyme label="a" type="m">doof</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Door 't <rhyme label="a" type="m" corresp="#s6:l1">ongeloof</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">d' Harder heeft 't Schaep <rhyme label="b" type="f">gevonden</rhyme>;</l>
        <l id="s6:l4" met="2" type="-+">Seyt: Thoma <rhyme label="c" type="m">vry</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Steeckt in mijn <rhyme label="c" type="m" corresp="#s6:l4">sy</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Uw' handt; brenght voort daer <rhyme label="c" type="m" corresp="#s6:l4">by</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Uw' handt; brenght voort daer <rhyme label="c" type="m" corresp="#s6:l4">by</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Uw' vingeren in mijn <rhyme label="b" type="f" corresp="#s6:l3">wonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Na dat de <rhyme label="a" type="m">gast</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Hadt wel <rhyme label="a" type="m" corresp="#s7:l1">getast</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Mijn Heer, mijn Godt! hy <rhyme label="b" type="f">seyde</rhyme>.</l>
        <l id="s7:l4" met="2" type="-+">En wilt noyt <rhyme label="c" type="m">we'er</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Sprack Godt sijn <rhyme label="c" type="m" corresp="#s7:l4">Heer</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">(Onderhout dese <rhyme label="c" type="m" corresp="#s7:l4">leer</rhyme>)</l>
        <l id="s7:l7" met="3" type="-+">(Onderhout dese <rhyme label="c" type="m" corresp="#s7:l4">leer</rhyme>)</l>
        <l id="s7:l8" met="3" type="-+">Van het geloove <rhyme label="b" type="f" corresp="#s7:l3">scheyden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Als Sint <rhyme label="a" type="m">Thomas</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Nu vervult <rhyme label="a" type="m" corresp="#s8:l1">was</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Met d' heylige geests <rhyme label="b" type="f">gaven</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Na de <rhyme label="c" type="m">Hircaen</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">En <rhyme label="c" type="m" corresp="#s8:l4">Persiaen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En Mooren is <rhyme label="c" type="m" corresp="#s8:l4">gegaen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En Mooren is <rhyme label="c" type="m" corresp="#s8:l4">gegaen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Verlicht de'es Satans <rhyme label="b" type="f" corresp="#s8:l3">slaven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Na d' <rhyme label="a" type="m">Indiaen</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">Die Son en <rhyme label="a" type="m" corresp="#s9:l1">Maen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">En Geesten voor Godt <rhyme label="b" type="f">eerden</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Hy loopt en <rhyme label="c" type="m">draeft</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Hier preeckt, en <rhyme label="c" type="m" corresp="#s9:l4">slaeft</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">d' Afgodery <rhyme label="c" type="m" corresp="#s9:l4">afschaeft</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">d' Afgodery <rhyme label="c" type="m" corresp="#s9:l4">afschaeft</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">By duysende <rhyme label="b" type="f" corresp="#s9:l3">bekeerden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Sagamus, 't <rhyme label="a" type="m">hooft</rhyme></l>
        <l id="s10:l2" met="2" type="-+">Mede <rhyme label="a" type="m" corresp="#s10:l1">gelooft</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">Als Thomas sijn <rhyme label="b" type="f">gebeden</rhyme></l>
        <l id="s10:l4" met="2" type="-+">Stort voor een <rhyme label="c" type="m">kruys</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">'t Godloos <rhyme label="c" type="m" corresp="#s10:l4">gespuys</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Steken met groot <rhyme label="c" type="m" corresp="#s10:l4">gedruys</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Steken met groot <rhyme label="c" type="m" corresp="#s10:l4">gedruys</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Een Lancy door zijn <rhyme label="b" type="f" corresp="#s10:l3">leden</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Och Menschen <rhyme label="a" type="m">al</rhyme>!</l>
        <l id="s11:l2" met="2" type="-+">Vreest uwen <rhyme label="a" type="m" corresp="#s11:l1">val</rhyme>;</l>
        <l id="s11:l3" met="3" type="-+">Op uw' wilt noyt <rhyme label="b" type="f">betrouwen</rhyme>.</l>
        <l id="s11:l4" met="2" type="-+">Na deughden <rhyme label="c" type="m">tracht</rhyme>;</l>
        <l id="s11:l5" met="2" type="-+">Van sonden <rhyme label="c" type="m" corresp="#s11:l4">wacht</rhyme>;</l>
        <l id="s11:l6" met="3" type="-+">'t Quaet geselschap <rhyme label="c" type="m" corresp="#s11:l4">veracht</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">'t Quaet geselschap <rhyme label="c" type="m" corresp="#s11:l4">veracht</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">'t Ongeloof wilt noyt <rhyme label="b" type="f" corresp="#s11:l3">trouwen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Vroom <rhyme label="a" type="m">Martelaer</rhyme>,</l>
        <l id="s12:l2" met="2" type="-+">Sint Thoma <rhyme label="a" type="m" corresp="#s12:l1">klaer</rhyme>;</l>
        <l id="s12:l3" met="3" type="-+">Van ons wilt al <rhyme label="b" type="f">verjagen</rhyme></l>
        <l id="s12:l4" met="2" type="-+">d' <rhyme label="c" type="m">Obstinaetheyt</rhyme></l>
        <l id="s12:l5" met="2" type="-+"><rhyme label="c" type="m" corresp="#s12:l4">Rebelligheyt</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Krijght dat niemant <rhyme label="c" type="m" corresp="#s12:l4">verleyt</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Krijght dan niemant <rhyme label="c" type="m" corresp="#s12:l4">verleyt</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Wort, door de Ketters <rhyme label="b" type="f" corresp="#s12:l3">lagen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="2" type="-+">Och Iesu <rhyme label="a" type="m">goet</rhyme>!</l>
        <l id="s13:l2" met="2" type="-+">Door uw' reyn <rhyme label="a" type="m" corresp="#s13:l1">bloet</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Bevrijdt ons al van <rhyme label="b" type="f">dolen</rhyme>.</l>
        <l id="s13:l4" met="2" type="-+">Door uw' zy <rhyme label="c" type="m">root</rhyme>,</l>
        <l id="s13:l5" met="2" type="-+">En wonde <rhyme label="c" type="m" corresp="#s13:l4">groot</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Vertroost ons inde <rhyme label="c" type="m" corresp="#s13:l4">noot</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Vertroost ons inde <rhyme label="c" type="m" corresp="#s13:l4">noot</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Leydt ons in 's Hemels <rhyme label="b" type="f" corresp="#s13:l3">scholen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
