<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>4620</id>
    <date>
      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>leuven</orginal-name>
      <standard-name>Leuven, Belgium</standard-name>
      <coordinates>
        <lon>50.879202</lon>
        <lat>4.7011675</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Onze Vader God almachtig</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OP dat wy van Gods <rhyme label="a" type="f">wezen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Verzekert zouden <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Heeft Christus willen <rhyme label="a" type="f" corresp="#s1:l1">vrezen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En lij-den d’helsche <rhyme label="b" type="m" corresp="#s1:l2">pijn</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Terwijl hy met <rhyme label="c" type="m">wanhoop</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Bevochten aen zijn <rhyme label="d" type="m">kruys</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Verzekerde ’t <rhyme label="c" type="m" corresp="#s1:l5">verloop</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Van ’t Israëlsche <rhyme label="d" type="m" corresp="#s1:l6">huys</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Schaemt u! ghy moogt wel <rhyme label="a" type="f">zwijgen</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">En kon den Ketter <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Geen vast vertrouwen <rhyme label="a" type="f" corresp="#s2:l1">krijgen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Als deur de wanhoop <rhyme label="b" type="m" corresp="#s2:l2">van</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Den zone Goods? <rhyme label="c" type="m">helaes</rhyme>!</l>
        <l id="s2:l6" met="3" type="-+">Ziet waer toe dat <rhyme label="d" type="m">vervalt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Een eigen-zinnig <rhyme label="c" type="m" corresp="#s2:l5">dwaes</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Die metten Bybel <rhyme label="d" type="m" corresp="#s2:l6">malt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Hemel word <rhyme label="a" type="f">gelasterd</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Den Heiland lijdt <rhyme label="b" type="m">geweld</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Wanneer de snode <rhyme label="a" type="f" corresp="#s3:l1">Bastard</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Verzekerdt maer <rhyme label="b" type="m" corresp="#s3:l2">ghesteld</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Mag werden van zijn <rhyme label="c" type="m">zoen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En d’Hemelrijkse <rhyme label="d" type="m">vreugd</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">End’ alles blijven <rhyme label="c" type="m" corresp="#s3:l5">doen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Mag wat zijn hart <rhyme label="d" type="m" corresp="#s3:l6">geneugt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Voorwaer een grote <rhyme label="a" type="f">graty</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Diet uitverkoren <rhyme label="b" type="m">volk</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Kreeg door de <rhyme label="a" type="f" corresp="#s4:l1">reformaty</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van een zoo lieven <rhyme label="b" type="m" corresp="#s4:l2">tolk</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Die van des Konings <rhyme label="c" type="m">hand</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Met een gelelydt <rhyme label="d" type="m">merk</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Recht als een nieu <rhyme label="c" type="m" corresp="#s4:l5">gezant</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Kwam tot zijn nieuwe <rhyme label="d" type="m" corresp="#s4:l6">Kerk</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De beste mannen <rhyme label="a" type="f">vrezen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Iob, David, Paulus <rhyme label="b" type="m">mee</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">En zal ik zeker <rhyme label="a" type="f" corresp="#s5:l1">wezen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die noit schier goet en <rhyme label="b" type="m" corresp="#s5:l2">dee</rhyme>?</l>
        <l id="s5:l5" met="3" type="-+">Veel wijzelikker <rhyme label="c" type="m">sprak</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Die huiden staet, zie <rhyme label="d" type="m">toe</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">Dat hem geen snode <rhyme label="c" type="m" corresp="#s5:l5">smak</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Voor morgen vallen <rhyme label="d" type="m" corresp="#s5:l6">doe</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer wonder boven <rhyme label="a" type="f">allen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dunkt my te wezen, <rhyme label="b" type="m">dat</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Noch iemand zoo kan <rhyme label="a" type="f" corresp="#s6:l1">mallen</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Daer ’t uitverkoren <rhyme label="b" type="m" corresp="#s6:l2">vat</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Zijn lichaem zoo <rhyme label="c" type="m">kastijdt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Iae blaut met haer met <rhyme label="d" type="m">tou</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Op dat hy door geen <rhyme label="c" type="m" corresp="#s6:l5">strijd</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Van God vervallen <rhyme label="d" type="m" corresp="#s6:l6">zou</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Loopt heen dan, fijner <rhyme label="a" type="f">broeder</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">En sijt met laster <rhyme label="b" type="m">van</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Vw’ Heiland’ uw’ <rhyme label="a" type="f" corresp="#s7:l1">behoeder</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Een uitgeleze <rhyme label="b" type="m" corresp="#s7:l2">Man</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Gelooft vry zonder <rhyme label="c" type="m">hoop</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">Maer ik en blijf geen <rhyme label="d" type="m">borg</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dat een zoo nieuwen <rhyme label="c" type="m" corresp="#s7:l5">loop</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Vergaen zal zonder <rhyme label="d" type="m" corresp="#s7:l6">zorg</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
