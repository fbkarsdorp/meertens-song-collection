<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>16074</id>
    <date>
      <year-start>1903</year-start>
      <year-end>1908</year-end>
    </date>
    <tags/>
    <melody>Een vriendelijk beeld mijn hart bedwongen heeft</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1">Een vriendelic beelt</l>
        <l id="s1:l2">mijn hert bedwonghen heeft,</l>
        <l id="s1:l3">wt rechte gestadighen moet</l>
        <l id="s1:l4">mi haer gedenken doet.</l>
        <l id="s1:l5">Al mijn ghepeis,</l>
        <l id="s1:l6">so wel bi dach als bi nacht,</l>
        <l id="s1:l7">wt rechte ghestadigher liefde</l>
        <l id="s1:l8">mi stets haer ghedenken doet.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1">Och, lieveken soet,</l>
        <l id="s2:l2">gheeft hulp ende raet daertoe,</l>
        <l id="s2:l3">ende raet mi voor het best</l>
        <l id="s2:l4">hoe ghi mijns ghedenken sult;</l>
        <l id="s2:l5">bi u te sijn</l>
        <l id="s2:l6">dat brenghet mi solaes;</l>
        <l id="s2:l7">nu ghevet mi, schoon lief,</l>
        <l id="s2:l8">u rode mondekijn.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1">O liefelic lief,</l>
        <l id="s3:l2">doet open dat herte dijn,</l>
        <l id="s3:l3">sluit mi in dinen armen blanc,</l>
        <l id="s3:l4">al in den armen dijn;</l>
        <l id="s3:l5">ende sluitet mi</l>
        <l id="s3:l6">wel vriendelic aen u borst,</l>
        <l id="s3:l7">so wert mij jonghe hertekijn</l>
        <l id="s3:l8">al door u liefde getroost.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1">Och scheiden droef</l>
        <l id="s4:l2">waertoe sidi ghemaect?</l>
        <l id="s4:l3">Die doot wil mi verbeiden</l>
        <l id="s4:l4">die also bitter smaect.</l>
        <l id="s4:l5">Hoe wee hem doch</l>
        <l id="s4:l6">dat jonge herteken doet,</l>
        <l id="s4:l7">die gheren bliven sou</l>
        <l id="s4:l8">ende emmer scheiden moet.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1">Mer die dit liedeken sanc</l>
        <l id="s5:l2">ten trooste der liefste sijn,</l>
        <l id="s5:l3">dat was een ruiter van der banc.</l>
        <l id="s5:l4">Ioncfroukens sijn so fijn.</l>
        <l id="s5:l5">Ic wensche der liefste</l>
        <l id="s5:l6">wel duisent goeden nacht,</l>
        <l id="s5:l7">ten is gheleden gheen oghenblic</l>
        <l id="s5:l8">si was in mijn ghedacht.</l>
      </lg>
    </lg>
  </text>
</song>
