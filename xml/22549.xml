  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hij troer die troren <rhyme label="a" type="f">wil</rhyme>:</l>
        <l id="s1:l2" met="3" type="-+">Mijn troeren is <rhyme label="b" type="m">ghedaen</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Ic heb ghesweghen <rhyme label="a" type="f" corresp="#s1:l1">stille</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Maria, wel <rhyme label="b" type="m" corresp="#s1:l2">verstaen</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Ic heb ghesweghen <rhyme label="a" type="f" corresp="#s1:l1">stille</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Maria, wel <rhyme label="b" type="m" corresp="#s1:l2">verstaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waerom soe wil ic <rhyme label="a" type="f">troeren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Of sorghen aldus <rhyme label="b" type="m">seer</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Ic weet, ic ben <rhyme label="a" type="f" corresp="#s2:l1">vercoren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van Jhesum, Mynen <rhyme label="b" type="m" corresp="#s2:l2">Heer</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Ic weet, ic ben <rhyme label="a" type="f" corresp="#s2:l1">vercoren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Van Jhesum, Mynen <rhyme label="b" type="m" corresp="#s2:l2">Heer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dat ic Hem bin <rhyme label="a" type="f">vercoren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Heeft Hij ghedaen <rhyme label="b" type="m">aenschijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Want ic most bliven <rhyme label="a" type="f" corresp="#s3:l1">verloren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Deedt Sijn doot ende Sijn <rhyme label="b" type="m" corresp="#s3:l2">pijn</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Want ic most bliven <rhyme label="a" type="f" corresp="#s3:l1">verloren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Deedt Sijn doot ende Sijn <rhyme label="b" type="m" corresp="#s3:l2">pijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hij is hier neder <rhyme label="a" type="f">ghecomen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Daer in ben ic <rhyme label="b" type="m">verblijt</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Misdaet soude my <rhyme label="a" type="f" corresp="#s4:l1">verdoemen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Sijn doot heeft mij <rhyme label="b" type="m" corresp="#s4:l2">ghequit</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Misdaet soude my <rhyme label="a" type="f" corresp="#s4:l1">verdoemen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sijn doot heeft mij <rhyme label="b" type="m" corresp="#s4:l2">ghequit</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Des wil ic my <rhyme label="a" type="f">verblijden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Seer vromelijc in <rhyme label="b" type="m">Hem</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ende draghen tot allen <rhyme label="a" type="f" corresp="#s5:l1">tijden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Sijn doot in mijnen <rhyme label="b" type="m" corresp="#s5:l2">sijn</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Ende draghen tot allen <rhyme label="a" type="f" corresp="#s5:l1">tijden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Sijn doot in mijnen <rhyme label="b" type="m" corresp="#s5:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Des bin bin ic wel <rhyme label="a" type="f">ontwaren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Deedt Sijn doot ende Sijn <rhyme label="b" type="m">pijn</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Al baed ic <rhyme label="a" type="f" corresp="#s6:l1">dusentjaren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Twaer al verloren <rhyme label="b" type="m" corresp="#s6:l2">goet</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Al baed ic <rhyme label="a" type="f" corresp="#s6:l1">dusentjaren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Twaer al verloren <rhyme label="b" type="m" corresp="#s6:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hier om wil ic Hem <rhyme label="a" type="f">minnen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die mij dus heeft <rhyme label="b" type="m">verlost</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ende in mijn hertgen <rhyme label="a" type="f" corresp="#s7:l1">binnen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Houden voer al mijn <rhyme label="b" type="m" corresp="#s7:l2">troest</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Ende in mijn hertgen <rhyme label="a" type="f" corresp="#s7:l1">binnen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Houden voer al mijn <rhyme label="b" type="m" corresp="#s7:l2">troest</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Lof, eer, sij Dij, <rhyme label="a" type="f">Marie</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Schoen edel suver <rhyme label="b" type="m">Maghet</rhyme>!</l>
        <l id="s8:l3" met="3" type="-+">Ten was noch waerlijc <rhyme label="a" type="f" corresp="#s8:l1">nie</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat Ghij my liet <rhyme label="b" type="m" corresp="#s8:l2">versaecht</rhyme>!</l>
        <l id="s8:l5" met="3" type="-+">Ten was noch waerlijc <rhyme label="a" type="f" corresp="#s8:l1">nie</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Dat Ghij my liet <rhyme label="b" type="m" corresp="#s8:l2">versaecht</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
