<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>175094</id>
    <date>
      <year-start>1861</year-start>
      <year-end>1861</year-end>
    </date>
    <tags>
      <tag>children's song</tag>
      <tag>reflective song</tag>
      <tag>secular song</tag>
    </tags>
    <melody>Honger is de beste saus</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Honger is de beste <rhyme label="a" type="m">saus</rhyme>;</l>
        <l id="s1:l2" met="4" type="+-">Draven, slaven, zwoegen, <rhyme label="b" type="f">zweeten</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Geeft den regten trek tot <rhyme label="b" type="f" corresp="#s1:l2">eten</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Wie gewerkt heeft flink en <rhyme label="c" type="m">goed</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Smaken raauwe boonen <rhyme label="c" type="m" corresp="#s1:l4">zoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Honger is de beste <rhyme label="a" type="m">saus</rhyme>!</l>
        <l id="s2:l2" met="4" type="+-">Had-je taarten en <rhyme label="b" type="f">pastijen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Had-je 's werelds <rhyme label="b" type="f" corresp="#s2:l2">lekkernijen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Och wat hielp het u, mijn <rhyme label="c" type="m">schat</rhyme>!</l>
        <l id="s2:l5" met="4" type="+-">Als ge toch geen' honger <rhyme label="c" type="m" corresp="#s2:l4">hadt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Honger is de beste <rhyme label="a" type="m">saus</rhyme>!</l>
        <l id="s3:l2" met="4" type="+-">Loopt het somtijds op een <rhyme label="b" type="f">schraaltje</rhyme>, -</l>
        <l id="s3:l3" met="4" type="+-">Denk, wat baat het beste <rhyme label="b" type="f" corresp="#s3:l2">maaltje</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Aan een' luijen <rhyme label="c" type="m">lekkerbek</rhyme>.....</l>
        <l id="s3:l5" met="4" type="+-">Groote schotels, kleine <rhyme label="c" type="m" corresp="#s3:l4">trek</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
