  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DOen Narcissus quam <rhyme label="a" type="f">gedalen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van de bergen in een <rhyme label="b" type="m">pleyn</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Daer met kristallijne <rhyme label="a" type="f" corresp="#s1:l1">stralen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Daelde neder een <rhyme label="b" type="m" corresp="#s1:l2">fonteyn</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Hy vermoeyt van hitt', en <rhyme label="c" type="f">jagen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">In die plaetse kreegh <rhyme label="c" type="f" corresp="#s1:l5">behagen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En by die fonteyne <rhyme label="d" type="m">sat</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Dorstigh naer het koele <rhyme label="d" type="m" corresp="#s1:l7">nat</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als sijn roode lipjens <rhyme label="a" type="f">soncken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Om te drincken, in de <rhyme label="b" type="m">sprongh</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Meerder dorst, en heeter <rhyme label="a" type="f" corresp="#s2:l1">voncken</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Uyt die koude drift <rhyme label="b" type="m" corresp="#s2:l2">ontfongh</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Die van and're liefde <rhyme label="c" type="f">vluchte</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Om sijn eyge liefde <rhyme label="c" type="f" corresp="#s2:l5">suchte</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">'t Beelt, dat hy daer in <rhyme label="d" type="m">vernam</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Was het voncksel van die <rhyme label="d" type="m" corresp="#s2:l7">vlam</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Alsoo menighmael hy <rhyme label="a" type="f">naeckte</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Sijnen schim oock nader <rhyme label="b" type="m">quam</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Sijne schoonheyt hem <rhyme label="a" type="f" corresp="#s3:l1">vermaeckte</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Maeckte van een Stier een <rhyme label="b" type="m" corresp="#s3:l2">Lam</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Om sijn eygen beeldt te <rhyme label="c" type="f">kussen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En alsoo den brandt te <rhyme label="c" type="f" corresp="#s3:l5">blussen</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Dieper in het water <rhyme label="d" type="m">sonck</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En eylaes, alsoo <rhyme label="d" type="m" corresp="#s3:l7">verdronck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">De PoÃ«ten hem <rhyme label="a" type="f">verkeeren</rhyme></l>
        <l id="s4:l2" met="4" type="+-">In een bloem naer hem <rhyme label="b" type="m">genoemt</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Mensch' om u alsoo te <rhyme label="a" type="f" corresp="#s4:l1">leeren</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Die van schoonheyt u <rhyme label="b" type="m" corresp="#s4:l2">beroemt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Dat niet langer die sal <rhyme label="c" type="f">dueren</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Naer het seggen der <rhyme label="c" type="f" corresp="#s4:l5">Schriftueren</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Als een bloemtjen van het <rhyme label="d" type="m">velt</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Daer den sin niet op en <rhyme label="d" type="m" corresp="#s4:l7">stelt</rhyme>.</l>
      </lg>
    </lg>
  </text>
