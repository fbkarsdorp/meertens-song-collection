  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">HElaas myn <rhyme label="a" type="f">Godinne</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Aanhoord eens myn <rhyme label="b" type="m">klagt</rhyme>;</l>
        <l id="s1:l3" met="2" type="-+">Myn Hert, Ziel en <rhyme label="a" type="f" corresp="#s1:l1">Sinnen</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Die zyn in uw <rhyme label="b" type="m" corresp="#s1:l2">Magt</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">'k Doe uw <rhyme label="c" type="f">Offerhanden</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Van een eerbiedig <rhyme label="d" type="m">Hert</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Dat noyt in de <rhyme label="c" type="f" corresp="#s1:l5">Banden</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Der min was <rhyme label="d" type="m" corresp="#s1:l6">verwerd</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Voor dat uw schoone <rhyme label="e" type="f">oogen</rhyme></l>
        <l id="s1:l10" met="2" type="-+">Dat hadden <rhyme label="f" type="m">doorwond</rhyme>;</l>
        <l id="s1:l11" met="3" type="+-">Des toond dan <rhyme label="e" type="f" corresp="#s1:l9">meedoogen</rhyme>,</l>
        <l id="s1:l12" met="2" type="-+">En maak my <rhyme label="f" type="m" corresp="#s1:l10">gesond</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Gy weet nu myn <rhyme label="a" type="f">Kwalen</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Gy  kend reeds myn <rhyme label="b" type="m">pyn</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Myn sugten, myn <rhyme label="a" type="f" corresp="#s2:l1">dwalen</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Geeft my dan <rhyme label="b" type="m" corresp="#s2:l2">Medicyn</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Myn Hert berst door 't <rhyme label="c" type="f">klagen</rhyme>:</l>
        <l id="s2:l6" met="2" type="-+">Myn Ziel is <rhyme label="d" type="m">ontrust</rhyme>;</l>
        <l id="s2:l7" met="2" type="-+">Om u te <rhyme label="c" type="f" corresp="#s2:l5">behagen</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Sterkt alleen myn <rhyme label="d" type="m" corresp="#s2:l6">lust</rhyme>:</l>
        <l id="s2:l9" met="3" type="-+">Maar gy schynd te <rhyme label="e" type="f">vlugten</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Wanneer ik u <rhyme label="f" type="m">bid</rhyme></l>
        <l id="s2:l11" met="3" type="+-">Met tranen en <rhyme label="e" type="f" corresp="#s2:l9">sugten</rhyme>;</l>
        <l id="s2:l12" met="2" type="-+">Wat wreetheyd is <rhyme label="f" type="m" corresp="#s2:l10">dit</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Wilt de wonden <rhyme label="a" type="f">genesen</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Die gy hebt <rhyme label="b" type="m">gemaakt</rhyme>;</l>
        <l id="s3:l3" met="2" type="-+">Wild troostelyk <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Dien zoo naar u <rhyme label="b" type="m" corresp="#s3:l2">haakt</rhyme>;</l>
        <l id="s3:l5" met="2" type="-+">Wil hem Liefde <rhyme label="c" type="f">betonen</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Wyl hy u <rhyme label="d" type="m">bemind</rhyme>:</l>
        <l id="s3:l7" met="2" type="-+">Gy kond hem <rhyme label="c" type="f" corresp="#s3:l5">belonen</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Als gy u <rhyme label="d" type="m" corresp="#s3:l6">verbind</rhyme>;</l>
        <l id="s3:l9" met="3" type="-+">Want Liefde te <rhyme label="e" type="f">dragen</rhyme></l>
        <l id="s3:l10" met="2" type="-+">Dat is groote <rhyme label="f" type="m">pyn</rhyme>:</l>
        <l id="s3:l11" met="3" type="+-">Als men van die <rhyme label="e" type="f" corresp="#s3:l9">plagen</rhyme></l>
        <l id="s3:l12" met="2" type="-+">Niet beloond kan <rhyme label="f" type="m" corresp="#s3:l10">zyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Kanik geen troost <rhyme label="a" type="f">verwagten</rhyme>?</l>
        <l id="s4:l2" met="2" type="-+">Roemwaarde <rhyme label="b" type="m">Godin</rhyme>;</l>
        <l id="s4:l3" met="2" type="-+">Zoo moet ik <rhyme label="a" type="f" corresp="#s4:l1">versmagten</rhyme></l>
        <l id="s4:l4" met="2" type="-+">En smelten door <rhyme label="b" type="m" corresp="#s4:l2">min</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Hoewel dat een <rhyme label="c" type="f">minnaar</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Al lyd hy veel <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Steeds hoopt een <rhyme label="c" type="f" corresp="#s4:l5">Verwinnaar</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Te wesen: Ey <rhyme label="d" type="m" corresp="#s4:l6">bied</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Hem dan eens een <rhyme label="e" type="f">kusje</rhyme>,</l>
        <l id="s4:l10" met="2" type="-+">Van uw lieve <rhyme label="f" type="m">mond</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Geneest my myn <rhyme label="e" type="f" corresp="#s4:l9">lusje</rhyme>,</l>
        <l id="s4:l12" met="2" type="-+">Gy hebt my <rhyme label="f" type="m" corresp="#s4:l10">gewond</rhyme>.</l>
      </lg>
    </lg>
  </text>
