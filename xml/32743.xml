  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">OCh hoe stont de droeve <rhyme label="a" type="f">Moeder</rhyme></l>
        <l id="s1:l2" met="4" type="+-">By dat Cruys daer ons <rhyme label="a" type="f" corresp="#s1:l1">behoeder</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Iesu haeren Soon <rhyme label="b" type="m">aenhinck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wiens siele, wiens <rhyme label="a" type="f">herte</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Vol van rouw, en vol van <rhyme label="a" type="f" corresp="#s2:l1">smerte</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Een seer pijnigh sweert <rhyme label="b" type="m">door-ghinck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Och hoe droef van alle <rhyme label="a" type="f">sijde</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Was die seer <rhyme label="a" type="f" corresp="#s3:l1">ghebenedijde</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Moeder van dat eenigh <rhyme label="b" type="m">kint</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Die met traenen <rhyme label="a" type="f">overvloedigh</rhyme></l>
        <l id="s4:l2" met="4" type="+-">En met beven sagh seer <rhyme label="a" type="f" corresp="#s4:l1">droedigh</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Al't groot leet haers Soons <rhyme label="b" type="m">bemindt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wie toch menschen sal sijn <rhyme label="a" type="f">wanghen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Niet met tranen vloet <rhyme label="a" type="f" corresp="#s5:l1">behanghen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Als hy dese Moeder <rhyme label="b" type="m">siet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wie en sou niet bitter <rhyme label="a" type="f">suchten</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Die de Moeder wel <rhyme label="a" type="f" corresp="#s6:l1">beduchten</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Met haer Soon ins sulck <rhyme label="b" type="m">verdriet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Om der menschen sware <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Sach sy Iesum soo <rhyme label="a" type="f" corresp="#s7:l1">door-wonden</rhyme></l>
        <l id="s7:l3" met="4" type="+-">En belast met pijnen <rhyme label="b" type="m">groot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Zy sagh haeren Soon <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Als hy voor sijn <rhyme label="a" type="f" corresp="#s8:l1">ondersaten</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Stierf aen't Kruys de bitter <rhyme label="b" type="m">doot</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">O der minnen claer <rhyme label="a" type="f">fonteyne</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Laet my oock ghevoelen <rhyme label="a" type="f" corresp="#s9:l1">pijne</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Ende met u oock droedich <rhyme label="b" type="m">sijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Maeckt dat branden al mijn <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s10:l2" met="4" type="+-">En dat ick Christum <rhyme label="a" type="f" corresp="#s10:l1">beminne</rhyme></l>
        <l id="s10:l3" met="4" type="+-">En hem oock behaghe <rhyme label="b" type="m">sijn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Goede Moeder wilt de <rhyme label="a" type="f">smerte</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Des ghecruysten in mijn <rhyme label="a" type="f" corresp="#s11:l1">herte</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Vast indrucken over <rhyme label="b" type="m">al</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">V Soons pijnen ('t is wel <rhyme label="a" type="f">reden</rhyme>)</l>
        <l id="s12:l2" met="4" type="+-">Die hy voor my heeft <rhyme label="a" type="f" corresp="#s12:l1">gheleden</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Dat ick met u deylen <rhyme label="b" type="m">sal</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Wilt my doch waerachtigh <rhyme label="a" type="f">gheven</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Dat ick met u al mijn <rhyme label="a" type="f" corresp="#s13:l1">leven</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Krijten ende weenen <rhyme label="b" type="m">mach</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Dat ick u gheselschap <rhyme label="a" type="f">houwe</rhyme></l>
        <l id="s14:l2" met="4" type="+-">En dat Cruys met u <rhyme label="a" type="f" corresp="#s14:l1">aenschauwe</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Is mijn wenschen nacht en <rhyme label="b" type="m">dach</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Maeght der Maeghden hoogh <rhyme label="a" type="f">gepresen</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Wilt my nu niet bitter <rhyme label="a" type="f" corresp="#s15:l1">wesen</rhyme></l>
        <l id="s15:l3" met="4" type="+-">Laet my met u rouwich <rhyme label="b" type="m">sijn</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Doet my Christus doot oock <rhyme label="a" type="f">draghen</rhyme></l>
        <l id="s16:l2" met="4" type="+-">In sijn cruys crijghen <rhyme label="a" type="f" corresp="#s16:l1">behaghen</rhyme></l>
        <l id="s16:l3" met="4" type="+-">En ghedachtich zijn sijn <rhyme label="b" type="m">pijn</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Maeckt dat gans mijn hert van <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s17:l2" met="4" type="+-">Sy vervult met Iesus <rhyme label="a" type="f" corresp="#s17:l1">minnen</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">Op dat ick magh zijn sijn <rhyme label="b" type="m">kindt</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Dus met liefden brant <rhyme label="a" type="f">ontsteken</rhyme></l>
        <l id="s18:l2" met="4" type="+-">Dat ick hulp voor mijn <rhyme label="a" type="f" corresp="#s18:l1">ghebreken</rhyme></l>
        <l id="s18:l3" met="4" type="+-">Van u Maeght in't oordeel <rhyme label="b" type="m">vindt</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Door dat cruys wilt my <rhyme label="a" type="f">bevrijden</rhyme></l>
        <l id="s19:l2" met="4" type="+-">En bewaren door Gods <rhyme label="a" type="f" corresp="#s19:l1">lijden</rhyme></l>
        <l id="s19:l3" met="4" type="+-">In sijn gratie <rhyme label="b" type="m">overvloet</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Als mijn lichaem sal gaen <rhyme label="a" type="f">sterven</rhyme></l>
        <l id="s20:l2" met="4" type="+-">Dat mijn ziel dan mach <rhyme label="a" type="f" corresp="#s20:l1">be-erven</rhyme></l>
        <l id="s20:l3" met="4" type="+-">S'hemels rijck, en d'eeuwigh <rhyme label="b" type="m">goet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
