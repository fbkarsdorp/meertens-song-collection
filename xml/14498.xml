  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MARIA <rhyme label="a" type="f">Magdalene</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ick groet u met <rhyme label="b" type="m">ootmoet</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Verwondert <rhyme label="c" type="f">seere</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Ghy schijnt een <rhyme label="a" type="f" corresp="#s1:l1">Maeght-alleene</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Als ick u noemen <rhyme label="b" type="m" corresp="#s1:l2">moet</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Vriendin des <rhyme label="c" type="f" corresp="#s1:l3">Heeren</rhyme>.</l>
        <l id="s1:l7" met="2" type="-+">De <rhyme label="d" type="m">Letanij</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">U noch daer <rhyme label="d" type="m" corresp="#s1:l7">by</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Steldt oock voor alle <rhyme label="e" type="f">Maeghden</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">Om dat gh' uw' <rhyme label="f" type="f">sonden</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Door groote liefd' <rhyme label="f" type="f" corresp="#s1:l10">ontbonden</rhyme>,</l>
        <l id="s1:l12" met="2" type="+-">Seer <rhyme label="e" type="f" corresp="#s1:l9">beklaeghden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghy hebt voorwaer <rhyme label="a" type="f">verkooren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat alderbeste <rhyme label="b" type="m">deel</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Aen Jesus <rhyme label="c" type="f">voeten</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Want ghy daer zijt <rhyme label="a" type="f" corresp="#s2:l1">herbooren</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Ghereynight oock <rhyme label="b" type="m" corresp="#s2:l2">gheheel</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Door liefd' en <rhyme label="c" type="f" corresp="#s2:l3">boete</rhyme>.</l>
        <l id="s2:l7" met="2" type="-+">O waerde <rhyme label="d" type="m">boet</rhyme>!</l>
        <l id="s2:l8" met="2" type="-+">O tranen <rhyme label="d" type="m" corresp="#s2:l7">vloet</rhyme>!</l>
        <l id="s2:l9" met="3" type="-+">O seer gheluckigh <rhyme label="e" type="f">ure</rhyme>!</l>
        <l id="s2:l10" met="2" type="-+">Als gh' uw' <rhyme label="f" type="f">misdaden</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Waer mee ghy waert <rhyme label="f" type="f" corresp="#s2:l10">beladen</rhyme>,</l>
        <l id="s2:l12" met="2" type="+-">Ginght <rhyme label="e" type="f" corresp="#s2:l9">betrueren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Teghen der sonden <rhyme label="a" type="f">smerten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Kreeght ghy een <rhyme label="b" type="m">medecijn</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Van liefde <rhyme label="c" type="f">puere</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Dus riept ghy uyt der <rhyme label="a" type="f" corresp="#s3:l1">herten</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Rabboni, Meester <rhyme label="b" type="m" corresp="#s3:l2">mijn</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Door 't Godd'lijck <rhyme label="c" type="f" corresp="#s3:l3">vuere</rhyme>.</l>
        <l id="s3:l7" met="2" type="-+">O vyer <rhyme label="d" type="m">divijn</rhyme>!</l>
        <l id="s3:l8" met="2" type="-+">Godts liefde <rhyme label="d" type="m" corresp="#s3:l7">fijn</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Hoe wonder zijn uw' <rhyme label="e" type="f">wercken</rhyme>!</l>
        <l id="s3:l10" met="2" type="-+">Dat <rhyme label="f" type="f">Maegdalene</rhyme></l>
        <l id="s3:l11" met="3" type="+-">Den Heer Jesum <rhyme label="f" type="f" corresp="#s3:l10">alleene</rhyme></l>
        <l id="s3:l12" met="2" type="+-">Wil <rhyme label="e" type="f" corresp="#s3:l9">aenmercken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wie sou nu <rhyme label="a" type="f">despereeren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van Jesus liefde <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Om sond' of <rhyme label="c" type="f">blamen</rhyme>?</l>
        <l id="s4:l4" met="3" type="-+">Ick wil my tot hem <rhyme label="a" type="f" corresp="#s4:l1">keeren</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En vallen oock te <rhyme label="b" type="m" corresp="#s4:l2">voet</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">'k Wil my niet <rhyme label="c" type="f" corresp="#s4:l3">schamen</rhyme>:</l>
        <l id="s4:l7" met="2" type="-+">Mijn sonden <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">En al mijn <rhyme label="d" type="m" corresp="#s4:l7">noodt</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Wil ick nu gaen <rhyme label="e" type="f">belijden</rhyme>,</l>
        <l id="s4:l10" met="2" type="-+">Dat my den <rhyme label="f" type="f">Heere</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Van sonden en <rhyme label="f" type="f" corresp="#s4:l10">oneere</rhyme></l>
        <l id="s4:l12" met="2" type="+-">Magh <rhyme label="e" type="f" corresp="#s4:l9">bevrijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
