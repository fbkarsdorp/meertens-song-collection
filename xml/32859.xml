<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>32859</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody>De vogeltjes in de muiten</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Als ghy o Heer, der <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">V vrienden hier <rhyme label="b" type="m">verliet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die v glorie hier souden <rhyme label="a" type="f" corresp="#s1:l1">vermeeren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Soo ghy haer dickwils <rhyme label="b" type="m" corresp="#s1:l2">gebiet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Maer zy mosten noch wat <rhyme label="c" type="f">wachten</rhyme></l>
        <l id="s1:l6" met="3" type="-+">En blieuen in die <rhyme label="d" type="m">stadt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Daer sout ghy haer doen <rhyme label="c" type="f" corresp="#s1:l5">becrachten</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Soo ghy haer belooffet <rhyme label="d" type="m" corresp="#s1:l6">hadt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Doen ghy ghinct opwaerts <rhyme label="a" type="f">varen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Inden throon ws vaders <rhyme label="b" type="m">zoet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Die Engelen die daer <rhyme label="a" type="f" corresp="#s2:l1">waeren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dese quamen v Heer te <rhyme label="b" type="m" corresp="#s2:l2">gemoet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Sy ghinghen v grootelijcks <rhyme label="c" type="f">dancken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Voor onser <rhyme label="d" type="m">salicheyt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die ghy ons brosschen, en <rhyme label="c" type="f" corresp="#s2:l5">crancken</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Door v passie hadde <rhyme label="d" type="m" corresp="#s2:l6">bereydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sy vraechden wt <rhyme label="a" type="f">wonderheden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hoe is, Heere v cleet zoo <rhyme label="b" type="m">root</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Den persse heb ick selfs <rhyme label="a" type="f" corresp="#s3:l1">ghetreden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Sprack den Heer voor clien en <rhyme label="b" type="m" corresp="#s3:l2">groot</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Op dat ickse zoude doen <rhyme label="c" type="f">haelen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Al wt des duiuels <rhyme label="d" type="m">macht</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Soo heb ick haer schult doen <rhyme label="c" type="f" corresp="#s3:l5">betaelen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">En heb haer in vrijheyt <rhyme label="d" type="m" corresp="#s3:l6">ghebracht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Siet hier dese groote <rhyme label="a" type="f">schaeren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die my nv volgende <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En van den viant gheuanghen <rhyme label="a" type="f" corresp="#s4:l1">waeren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die zyn al geworden <rhyme label="b" type="m" corresp="#s4:l2">mijn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dese ginck ick hem <rhyme label="c" type="f">berouen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Met ghewelt al benijde hy <rhyme label="d" type="m">dat</rhyme></l>
        <l id="s4:l7" met="3" type="-+">En sal ickse voeren <rhyme label="c" type="f" corresp="#s4:l5">bouen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">In die plaetse daer hy eerst <rhyme label="d" type="m" corresp="#s4:l6">sat</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mijn broeders al te <rhyme label="a" type="f">samen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hadden wy daer doen <rhyme label="b" type="m">gheweest</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Doen al dese zielen ten hemel <rhyme label="a" type="f" corresp="#s5:l1">quamen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Al in die schoone <rhyme label="b" type="m" corresp="#s5:l2">Feest</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Den Vader nae groot <rhyme label="c" type="f">verlanghen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Ontfinck daer zynen <rhyme label="d" type="m">Soon</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Die daer quam met soo menich <rhyme label="c" type="f" corresp="#s5:l5">gheuanghen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Al in des Vaders <rhyme label="d" type="m" corresp="#s5:l6">throon</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghedenckt hoe die Engelen te <rhyme label="a" type="f">samen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die salighe zielen hebben <rhyme label="b" type="m">ghegroet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Een igelijck nae <rhyme label="a" type="f" corresp="#s6:l1">betaemen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Nu verlost door het Lammekens <rhyme label="b" type="m" corresp="#s6:l2">bloet</rhyme></l>
        <l id="s6:l5" met="3" type="-+">En zouden nu eewich <rhyme label="c" type="f">regneeren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Met haer in zynen <rhyme label="d" type="m">throon</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Om te louen den Heer der <rhyme label="c" type="f" corresp="#s6:l5">Heeren</rhyme></l>
        <l id="s6:l8" met="3" type="-+">En aenschouwen zyn aenschijn <rhyme label="d" type="m" corresp="#s6:l6">schoon</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den Soon des Vaders <rhyme label="a" type="f">verheuen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Heeft hem dese gaue <rhyme label="b" type="m">ghepresenteert</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Godt heeft hem daer doen <rhyme label="a" type="f" corresp="#s7:l1">ghegeuen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Dat hy met hem <rhyme label="b" type="m" corresp="#s7:l2">regeert</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">In ghelicke macht en <rhyme label="c" type="f">waerdicheden</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Is Ihesus daer <rhyme label="d" type="m">ghestelt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Als zijn Vader, die nu zyn <rhyme label="c" type="f" corresp="#s7:l5">ghebeden</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Verhoort, zoo die schriftuer <rhyme label="d" type="m" corresp="#s7:l6">vermelt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Nu zijt ghy daer Ihesu <rhyme label="a" type="f">gheseten</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Aen ws Vaders <rhyme label="b" type="m">rechterhant</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Op dat wy allen souden <rhyme label="a" type="f" corresp="#s8:l1">weten</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat ghy zijt ons Coninck <rhyme label="b" type="m" corresp="#s8:l2">triumphant</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Die den viant vander <rhyme label="c" type="f">hellen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Hebt benomen zynen <rhyme label="d" type="m">macht</rhyme></l>
        <l id="s8:l7" met="3" type="-+">En al v vianden sult ghy <rhyme label="c" type="f" corresp="#s8:l5">stellen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Onder v voeten, door v groote <rhyme label="d" type="m" corresp="#s8:l6">cracht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Laet ons metten gheest nu <rhyme label="a" type="f">varen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hier bouen in den Hemels <rhyme label="b" type="m">throon</rhyme></l>
        <l id="s9:l3" met="3" type="-+">En sien hoe al die Engelsche <rhyme label="a" type="f" corresp="#s9:l1">schaeren</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Daer zyn by den Vader, en by den <rhyme label="b" type="m" corresp="#s9:l2">Soon</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Desen wellekoom die daer is <rhyme label="c" type="f">ghehouwen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Oock vanden H. <rhyme label="d" type="m">Gheest</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Ghy Enghelen diet al <rhyme label="c" type="f" corresp="#s9:l5">aenschouwen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">O mijn ziel, hadt ghy daer oock <rhyme label="d" type="m" corresp="#s9:l6">gheweest</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Gheen herte en cant <rhyme label="a" type="f">contempleren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Die vruechde die daer is <rhyme label="b" type="m">gheschiet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Hoe God den vader dien doet <rhyme label="a" type="f" corresp="#s10:l1">vereeren</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Die zyn ghebeden hier hout met <rhyme label="b" type="m" corresp="#s10:l2">vliet</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Gheeft dat wy v gheboden <rhyme label="c" type="f">houwen</rhyme></l>
        <l id="s10:l6" met="3" type="-+">En v naevolghen met <rhyme label="d" type="m">verdult</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Op dat wy v glorie <rhyme label="c" type="f" corresp="#s10:l5">aenschouwen</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Als ghy ons wt deser aerden roepen <rhyme label="d" type="m" corresp="#s10:l6">sult</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
