  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAer toe laet gy u <rhyme label="a" type="f">vervoeren</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Dat gy loochent uwen <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Kent gy, Petrus, my niet <rhyme label="b" type="m" corresp="#s1:l2">meer</rhyme>!</l>
        <l id="s1:l4" met="4" type="+-">Wat doet soo uw hert <rhyme label="a" type="f" corresp="#s1:l1">ontroeren</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dat gy my vervloeckt soo <rhyme label="c" type="m">seer</rhyme>?</l>
        <l id="s1:l6" met="4" type="+-">Petrus, kent gy my niet <rhyme label="c" type="m" corresp="#s1:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">k'Heb myn liefde u <rhyme label="a" type="f">gegeven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">U omhelst noch desen <rhyme label="b" type="m">dagh</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als ick voor uw' voeten <rhyme label="b" type="m" corresp="#s2:l2">lagh</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Met het broodt van't eeuwigh <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Heb ick u gespyst daer <rhyme label="c" type="m">by</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">En gy, Petrus, loochent <rhyme label="c" type="m" corresp="#s2:l5">my</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gy weet, wat ick heb <rhyme label="a" type="f">geleden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Wat in t'Hofken <rhyme label="b" type="m">onderstaen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Daer ick was met u <rhyme label="b" type="m" corresp="#s3:l2">gegaen</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Als ick dry-mael had' <rhyme label="a" type="f" corresp="#s3:l1">gebeden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Quamp verraeder Judas <rhyme label="c" type="m">aen</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Petrus, is u dit <rhyme label="c" type="m" corresp="#s3:l5">ontgaen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wat heb ick u dan <rhyme label="a" type="f">misdreven</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dat gy noch in al myn <rhyme label="b" type="m">smert</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Met een sweerdt door-steeckt myn <rhyme label="b" type="m" corresp="#s4:l2">hert</rhyme>?</l>
        <l id="s4:l4" met="4" type="+-">Gy hebt my uw' trouw <rhyme label="a" type="f" corresp="#s4:l1">gegeven</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En herhaelt den derden <rhyme label="c" type="m">keer</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">Petrus, kent gy my niet <rhyme label="c" type="m" corresp="#s4:l5">meer</rhyme>?</l>
      </lg>
    </lg>
  </text>
</song>
