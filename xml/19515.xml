  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEer! wat is dit voor een <rhyme label="a" type="m">dag</rhyme>;</l>
        <l id="s1:l2" met="4" type="+-">Zou 't wel Allerheilgen <rhyme label="b" type="f">weezen</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">'t Volckje loopt zo drok als 't <rhyme label="a" type="m" corresp="#s1:l1">mag</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Om de drommel te <rhyme label="b" type="f" corresp="#s1:l2">beleezen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Die, in 't Klooster staag <rhyme label="c" type="m">regeert</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Daer de Bruyd het zoenen <rhyme label="c" type="m" corresp="#s1:l5">leert</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Couragie, Couragie, <rhyme label="d" type="f">Couragie</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Zuster, koom, het is hoog <rhyme label="a" type="m">tijd</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Omje maagdom eens te <rhyme label="b" type="f">wagen</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Lang genoeg zijt ghy <rhyme label="a" type="m" corresp="#s2:l1">gevrijd</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Waar toe doch het pak te <rhyme label="b" type="f" corresp="#s2:l2">dragen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Datje nut noch voor deel <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">So lang ghy alleenig <rhyme label="c" type="m" corresp="#s2:l5">leeft</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Couragie, Couragie, <rhyme label="d" type="f">Couragie</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Twee paer Schoenen voor een <rhyme label="a" type="m">Bedt</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Houd men voor de grootste <rhyme label="b" type="f">zeegen</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Die, wanneer de Trouw haar <rhyme label="a" type="m" corresp="#s3:l1">zet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Ooit een Vryster heeft <rhyme label="b" type="f" corresp="#s3:l2">verkreegen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Of ooit Vryer wenschen <rhyme label="c" type="m">kan</rhyme>.</l>
        <l id="s3:l6" met="4" type="+-">Lustig liefje, waag het <rhyme label="c" type="m" corresp="#s3:l5">dan</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Couragie, Couragie, <rhyme label="d" type="f">Couragie</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vraag de Bruyd eens morgen <rhyme label="a" type="m">vroeg</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als de Son begint te <rhyme label="b" type="f">bloozen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Hoe dat zich heur Kraeyer <rhyme label="a" type="m" corresp="#s4:l1">droeg</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">In het plucken van 'er <rhyme label="b" type="f" corresp="#s4:l2">roozen</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">'k Wed zy zeggen sal: <rhyme label="c" type="m">Vriendin</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">'t Opper zoet schaft ons de <rhyme label="c" type="m" corresp="#s4:l5">Min</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Couragie, Couragie, <rhyme label="d" type="f">Couragie</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Vrienden, maakje keelen <rhyme label="a" type="m">klaar</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Om, met my, die Fluit te <rhyme label="b" type="f">veegen</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Veel gelucx genoegzaam <rhyme label="a" type="m" corresp="#s5:l1">paar</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">'k Wensie soo veel heil; en <rhyme label="b" type="f" corresp="#s5:l2">zeegen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Als'er druplen waaters <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">In de Maas, en in de <rhyme label="c" type="m" corresp="#s5:l5">Rijn</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Couragie, Couragie, <rhyme label="d" type="f">Couragie</rhyme>.</l>
      </lg>
    </lg>
