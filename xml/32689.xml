  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WAt moet ick <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Op dese werelt <rhyme label="b" type="m">niet</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Kos mijn ziel van haer <rhyme label="a" type="f" corresp="#s1:l1">schyden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Soo waer ick uyt 't <rhyme label="b" type="m" corresp="#s1:l2">verdriet</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Ach! wanneer sal dat eens <rhyme label="c" type="m">sijn</rhyme>?</l>
        <l id="s1:l6" met="4" type="+-">Dat ick verliet dees aerdtsche <rhyme label="c" type="m" corresp="#s1:l5">plijn</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Want ick nu ‘ben soo <rhyme label="d" type="m">mu</rhyme>’</l>
        <l id="s1:l8" met="4" type="+-">Hier te leven in <rhyme label="c" type="m" corresp="#s1:l5">gequyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ick, die soo <rhyme label="a" type="f">wercke</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Om mijnen cost, en <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Genaemt te sijn noch <rhyme label="a" type="f" corresp="#s2:l1">vercken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van mijnen droncken <rhyme label="b" type="m" corresp="#s2:l2">Man</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Als hy comt met groot <rhyme label="c" type="m">gedruys</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Wighle waghlen inden <rhyme label="c" type="m" corresp="#s2:l5">huys</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">'tGeen hy vindt,, Pot oft <rhyme label="d" type="m">Pindt</rhyme>,,</l>
        <l id="s2:l8" met="4" type="+-">Worpt naer my, oft naer het <rhyme label="c" type="m" corresp="#s2:l5">Kindt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Sau 'k my niet <rhyme label="a" type="f">tergen</rhyme>?</l>
        <l id="s3:l2" met="3" type="-+">Dat hy loopt allen <rhyme label="b" type="m">dagh</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Slabbacken in <rhyme label="a" type="f" corresp="#s3:l1">d'Herbergen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">'tGeen ick beweenen <rhyme label="b" type="m" corresp="#s3:l2">magh</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">En sijn dagh-huer die hy <rhyme label="c" type="m">windt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Eer hy thuys comt is <rhyme label="c" type="m" corresp="#s3:l5">verslindt</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En versmeert’ 't geen my <rhyme label="d" type="m">deert</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Daerom greys ick my schier <rhyme label="c" type="m" corresp="#s3:l5">blindt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Quaem Godt hem <rhyme label="a" type="f">haelen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat hy van hier cost <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ick soude noch <rhyme label="a" type="f" corresp="#s4:l1">betaelen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Uyt goeder hert den <rhyme label="b" type="m" corresp="#s4:l2">wyn</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Ach Piryne mijn <rhyme label="c" type="m">Gebuer</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Saegh ick eens dees blijde <rhyme label="c" type="m" corresp="#s4:l5">uer</rhyme></l>
        <l id="s4:l7" met="4" type="+-">'tWaer my docht,, 't geen ick <rhyme label="d" type="m">socht</rhyme>,,</l>
        <l id="s4:l8" met="4" type="+-">Dat my helpten uyt 't <rhyme label="c" type="m" corresp="#s4:l5">getruer</rhyme>.</l>
      </lg>
    </lg>
  </text>
