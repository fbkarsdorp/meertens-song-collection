    <melody>O rad van avontuur</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Lacy ic mach wel <rhyme label="a" type="f">claghen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En beweenen minen <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Want in mijn ionghe <rhyme label="a" type="f" corresp="#s1:l1">daghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dede ick so cleyn <rhyme label="b" type="m" corresp="#s1:l2">profijt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Dies ben ick seer <rhyme label="c" type="f">beganghen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Al in dat herte van <rhyme label="d" type="m">mi</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die werelt hielt mi <rhyme label="c" type="f" corresp="#s1:l5">gheuanghen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Ic en mocht haer niet <rhyme label="c" type="f" corresp="#s1:l5">ontganghen</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Ic ben bedroghen daer <rhyme label="d" type="m" corresp="#s1:l6">bi</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Si leyt mi schoon voer <rhyme label="a" type="f">oghen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ick neynde alsoe <rhyme label="b" type="m">waer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Daer ben ick bi <rhyme label="a" type="f" corresp="#s2:l1">bedroghen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ende ghebracht in liden <rhyme label="b" type="m" corresp="#s2:l2">swaer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Der werelt schoon <rhyme label="c" type="f">aenscouwen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hadde mi heel <rhyme label="d" type="m">verblint</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Ic waende daer op <rhyme label="c" type="f" corresp="#s2:l5">betrouwen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Mer nu macht mi wel <rhyme label="c" type="f" corresp="#s2:l5">rouwen</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Dat icxse hebbe <rhyme label="d" type="m" corresp="#s2:l6">ghemint</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O werelt valsch <rhyme label="a" type="f">betoghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wat hebdy mi <rhyme label="b" type="m">ghedaen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ick vint nu al <rhyme label="a" type="f" corresp="#s3:l1">gheloghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dat ghi mi deedt <rhyme label="b" type="m" corresp="#s3:l2">verstaen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Met uwen valschen <rhyme label="c" type="f">treken</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Brocht ghi mi in <rhyme label="d" type="m">verdriet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Aldus mach ic wel <rhyme label="c" type="f" corresp="#s3:l5">spreken</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ende claghen mijn <rhyme label="c" type="f" corresp="#s3:l5">ghebreken</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Der werelt trou is <rhyme label="d" type="m" corresp="#s3:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Och die bedencken <rhyme label="a" type="f">conde</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Der werelt valsch <rhyme label="b" type="m">bedroch</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Hy soude in corten <rhyme label="a" type="f" corresp="#s4:l1">stonden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Sijn herte keeren daer <rhyme label="b" type="m" corresp="#s4:l2">of</rhyme></l>
        <l id="s4:l5" met="3" type="-+">En dienen <rhyme label="c" type="f">blidelijcken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">God ende die moeder <rhyme label="d" type="m">sijn</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Die en sullen ons niet <rhyme label="c" type="f" corresp="#s4:l5">beswijcken</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Maer brengen in dat <rhyme label="c" type="f" corresp="#s4:l5">rijcke</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Daer gheen bedroch en sal <rhyme label="d" type="m" corresp="#s4:l6">sijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die gonste is al <rhyme label="a" type="f">verloren</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Diemen der werelt <rhyme label="b" type="m">toocht</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Al hadmen mi <rhyme label="a" type="f" corresp="#s5:l1">ghesworen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">So en hadde ict niet <rhyme label="b" type="m" corresp="#s5:l2">ghelooft</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Maer nu heb ict <rhyme label="c" type="f">beuonden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Al eest tot mijnder <rhyme label="d" type="m">scade</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Dies ick in minen <rhyme label="c" type="f" corresp="#s5:l5">gront</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Druck lide tot alder <rhyme label="c" type="f" corresp="#s5:l5">stont</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Het was bina te <rhyme label="d" type="m" corresp="#s5:l6">spade</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Och edel <rhyme label="a" type="f">creatuere</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Hoe sidy soe <rhyme label="b" type="m">verblint</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ghemaect na Gods <rhyme label="a" type="f" corresp="#s6:l1">figure</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dat ghi die werelt <rhyme label="b" type="m" corresp="#s6:l2">mint</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Haer vruecht en mach niet <rhyme label="c" type="f">dueren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Si en sal niet langhe <rhyme label="d" type="m">staen</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Dit siet ghi tallen <rhyme label="c" type="f" corresp="#s6:l5">vren</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Si loont met eewich <rhyme label="c" type="f" corresp="#s6:l5">trueren</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Dat niet en sal <rhyme label="d" type="m" corresp="#s6:l6">vergaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus was ic voertijts <rhyme label="a" type="f">mede</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Verdwaelt als ghi nu <rhyme label="b" type="m">sijt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Doer Gods <rhyme label="a" type="f" corresp="#s7:l1">ghenadichede</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Lof si hem tot alder <rhyme label="b" type="m" corresp="#s7:l2">tijt</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Dacht ick in minen <rhyme label="c" type="f">sinne</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Het moet nu eens nemen <rhyme label="d" type="m">fijn</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Wat ick ter werelt <rhyme label="c" type="f" corresp="#s7:l5">minne</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Oft wat vruechden ic <rhyme label="c" type="f" corresp="#s7:l5">ghewinne</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Het moet ghestoruen <rhyme label="d" type="m" corresp="#s7:l6">sijn</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dus wilt v doch <rhyme label="a" type="f">bekeeren</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Beminde vrienden <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Ende wilt doch hier aen <rhyme label="a" type="f" corresp="#s8:l1">leeren</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Der werelt valschen <rhyme label="b" type="m" corresp="#s8:l2">schijn</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Bidt Gode ghenade met <rhyme label="c" type="f">trouwen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Hi is <rhyme label="d" type="m">ghenadelijck</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Ende onser lieuer <rhyme label="c" type="f" corresp="#s8:l5">vrouwen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">So moechdy hier na <rhyme label="c" type="f" corresp="#s8:l5">bescouwen</rhyme></l>
        <l id="s8:l9" met="3" type="-+">Die bliscap van dat eewich <rhyme label="d" type="m" corresp="#s8:l6">rijck</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
