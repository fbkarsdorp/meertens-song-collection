    <melody>Wee mij ik mag wel klagen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">COmt uyt den Hemel <rhyme label="a" type="f">dalen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In ons ô Heyligh <rhyme label="b" type="m">Geest</rhyme></l>
        <l id="s1:l3" met="3" type="-+">En met u <rhyme label="a" type="f" corresp="#s1:l1">minne-stralen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Wilt stillen ons <rhyme label="b" type="m" corresp="#s1:l2">tempeest</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Verlost ons van de <rhyme label="c" type="f">sonden</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Waer toe ghy zijt <rhyme label="c" type="f" corresp="#s1:l5">gesonden</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Van Christus hier op <rhyme label="d" type="m">d'aerdt</rhyme>.</l>
        <l id="s1:l8" met="3" type="-+">In 't vier <rhyme label="d" type="m" corresp="#s1:l7">veropenbaert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Van buyten, en van <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Verwermt ons traegh, en <rhyme label="b" type="m">kout</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Op dat wy u <rhyme label="a" type="f" corresp="#s2:l1">beminnen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Meer als het aertsche <rhyme label="b" type="m" corresp="#s2:l2">gout</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">En laet, ô Heer der <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Niet anders ons <rhyme label="c" type="f" corresp="#s2:l5">begeeren</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Waer dese liefd' in <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Daer in zijt ghy <rhyme label="d" type="m" corresp="#s2:l7">gewis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">All' onse liefde <rhyme label="a" type="f">vliegen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Naer uwe liefde <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo sal ons niet <rhyme label="a" type="f" corresp="#s3:l1">bedriegen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">De werelt met haer <rhyme label="b" type="m" corresp="#s3:l2">goet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">O waren wy <rhyme label="c" type="f">verheven</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Eens uyt dit sondigh <rhyme label="c" type="f" corresp="#s3:l5">leven</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En leefden by den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Die ons verloste <rhyme label="d" type="m" corresp="#s3:l7">weer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ver meerdert dit <rhyme label="a" type="f">verlangen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Op dat het niet <rhyme label="b" type="m">vergaet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Den goeden will' <rhyme label="a" type="f" corresp="#s4:l1">ontfangen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wilt Jesu voor de <rhyme label="b" type="m" corresp="#s4:l2">daet</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Dit vier laet eeuwigh <rhyme label="c" type="f">branden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ontsteken van uw' <rhyme label="c" type="f" corresp="#s4:l5">handen</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Op onsen <rhyme label="d" type="m">hert-altaer</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Om u te volgen <rhyme label="d" type="m" corresp="#s4:l7">naer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">U wondere <rhyme label="a" type="f">genaden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Al onsen <rhyme label="b" type="m">onderstant</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">U goetheyt, en <rhyme label="a" type="f" corresp="#s5:l1">weldaden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Sijn 't hout van onsen <rhyme label="b" type="m" corresp="#s5:l2">brandt</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Wanneer wy die <rhyme label="c" type="f">vergaren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En in ons hert <rhyme label="c" type="f" corresp="#s5:l5">bewaren</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En daer voor danckbaer <rhyme label="d" type="m">zijn</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Vroegh voor den <rhyme label="d" type="m" corresp="#s5:l7">morgen-schijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Van 't quaet wilt ons <rhyme label="a" type="f">bevrijden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Waer door ons vier gaet <rhyme label="b" type="m">uyt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En laet ons oock <rhyme label="a" type="f" corresp="#s6:l1">belijden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In 't eynde met u <rhyme label="b" type="m" corresp="#s6:l2">Bruyt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dat alle <rhyme label="c" type="f">tribulacy</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Door uwe stercke <rhyme label="c" type="f" corresp="#s6:l5">gracy</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Ons vier niet uyt en <rhyme label="d" type="m">doet</rhyme>;</l>
        <l id="s6:l8" met="3" type="-+">Maer meer de liefde <rhyme label="d" type="m" corresp="#s6:l7">voedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
