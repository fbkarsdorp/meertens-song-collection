  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MAeght, Moeder // en Ioseph <rhyme label="a" type="f">Hoeder</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Waren verwondert al te <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Van de woorden !/ die sy bey <rhyme label="c" type="f">hoorden</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van 't Kind'lijn Iesus onsen <rhyme label="b" type="m" corresp="#s1:l2">Heer</rhyme>;</l>
        <l id="s1:l5" met="2" type="-+">Simeon die <rhyme label="d" type="m">kreech</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Anna die <rhyme label="d" type="m" corresp="#s1:l5">neech</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Wat 't Kindt gebeurden, 't was al te <rhyme label="d" type="m" corresp="#s1:l5">deech</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Met rede // Simeon dit <rhyme label="a" type="f">dede</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Het was van Godt hem <rhyme label="b" type="m">toe-gheseyt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat hy niet sterven // noch 't leven <rhyme label="c" type="f">derven</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En soude, voor hy hadd' <rhyme label="b" type="m" corresp="#s2:l2">bescheyt</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Dat hy <rhyme label="d" type="m">ghesien</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Hadd' en met <rhyme label="d" type="m" corresp="#s2:l5">knien</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Hadd' aenghebeden boven alle <rhyme label="d" type="m" corresp="#s2:l5">Lien</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dit dede // Godt Anna <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Een Vrouw, de beste van haer <rhyme label="b" type="m">eeuw</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ghebleven // 't staet soo <rhyme label="c" type="f">beschreven</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Naer d'eerste Man een kuysche <rhyme label="b" type="m" corresp="#s3:l2">Weeuw</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Naer 't eerste <rhyme label="d" type="m">paer</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">d' Eerste van <rhyme label="d" type="m" corresp="#s3:l5">haer</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Tot gantsch heel vier-en-tachtich <rhyme label="d" type="m" corresp="#s3:l5">jaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den Tempel // ons tot <rhyme label="a" type="f">exempel</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Verliet Anna <rhyme label="b" type="m">nimmermer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Met Beden // brack sy haer <rhyme label="c" type="f">leden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Met vasten voor Godt den <rhyme label="b" type="m" corresp="#s4:l2">Heer</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Dus 't volck <rhyme label="d" type="m">verblindt</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Tot dit kleyn <rhyme label="d" type="m" corresp="#s4:l5">Kindt</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Wierde hoe langher, hoe meer <rhyme label="d" type="m" corresp="#s4:l5">ghesint</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als nu de Wetten // buyten <rhyme label="a" type="f">Nazarette</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Waer volbracht, waren <rhyme label="b" type="m">voldaen</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Zijn sy weder // met 't Kind'lijn <rhyme label="c" type="f">teder</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ghekeert, en naer huys <rhyme label="b" type="m" corresp="#s5:l2">ghegaen</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">Daer nam 't Kindt <rhyme label="d" type="m">toe</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Ick weet niet <rhyme label="d" type="m" corresp="#s5:l5">hoe</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Wiert nooyt door goet-doen mat, oft <rhyme label="d" type="m" corresp="#s5:l5">moe</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Laet ons mede // wassen met <rhyme label="a" type="f">zede</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Met 't kleynste Kint, den grootsten <rhyme label="b" type="m">God</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Gaern betrede // de laetste <rhyme label="c" type="f">stede</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Op dat hy zy ons hoochste <rhyme label="b" type="m" corresp="#s6:l2">lot</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Vast, bidt, en <rhyme label="d" type="m">siet</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Oock traentjens <rhyme label="d" type="m" corresp="#s6:l5">giet</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Laet hy zijn 't wit, daer ghy naer <rhyme label="d" type="m" corresp="#s6:l5">schiet</rhyme>.</l>
      </lg>
    </lg>
  </text>
