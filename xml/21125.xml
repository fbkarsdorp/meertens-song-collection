    <melody>Si c'est pour mon pucelage</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">BRuydegom, en Bruydt ter <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Laten wy in dese <rhyme label="b" type="m">Feest</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Vrolijck, vrolijck, blyd' van <rhyme label="b" type="m" corresp="#s1:l2">geest</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Nu in deught, om vreughts <rhyme label="a" type="f" corresp="#s1:l1">vermeeren</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Singen met zedigh <rhyme label="c" type="m">geluyt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Geluck Bruyd'gom en Vrou <rhyme label="c" type="m" corresp="#s1:l5">Bruydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Door de Golven en de <rhyme label="a" type="f">Baren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Van een ongeruste <rhyme label="b" type="m">Zee</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Eenen goede soete <rhyme label="b" type="m" corresp="#s2:l2">Ree</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Ghy nu beyde hebt <rhyme label="a" type="f" corresp="#s2:l1">bevaren</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">En gekregen tot een <rhyme label="c" type="m">buyt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">d'Een een Bruyd'gom, d'aer een <rhyme label="c" type="m" corresp="#s2:l5">Bruydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'k Wensch Godt u geluck wil <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">In de soete lieve <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die ghy nu met lief <rhyme label="b" type="m" corresp="#s3:l2">aen-vaet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat ghy meught in vreughde <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Tot de doot u oogen <rhyme label="c" type="m">sluyt</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">Geluck Bruyd'gom en vrouw <rhyme label="c" type="m" corresp="#s3:l5">Broudt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Soeckt elckander te <rhyme label="a" type="f">behagen</rhyme>.</l>
        <l id="s4:l2" met="4" type="+-">Neemt het soet altijdt in 't <rhyme label="b" type="m">soet</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Duydt het quaet altijdt in 't <rhyme label="b" type="m" corresp="#s4:l2">goet</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Leert u leet geduldigh <rhyme label="a" type="f" corresp="#s4:l1">dragen</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Drijft de twist ten Huyse <rhyme label="c" type="m">uyt</rhyme>;</l>
        <l id="s4:l6" met="4" type="+-">Geluck Bruyd'gom en vrouw <rhyme label="c" type="m" corresp="#s4:l5">Bruydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Leeft, dat ghy voor andere <rhyme label="a" type="f">lieden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Met u leven, t' alder <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">In 't goet een goet voorbeelt <rhyme label="b" type="m" corresp="#s5:l2">zijt</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Wilt u eygen Tuyntje <rhyme label="a" type="f" corresp="#s5:l1">wieden</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Suyvert het van al 't <rhyme label="c" type="m">onkruydt</rhyme>;</l>
        <l id="s5:l6" met="4" type="+-">Geluck Bruyd'gom en vrouw <rhyme label="c" type="m" corresp="#s5:l5">Bruydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Groeyt en bloeyt altijdt in <rhyme label="a" type="f">deughden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Als de Lauwerieren <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">'s Winters Somers even <rhyme label="b" type="m" corresp="#s6:l2">groen</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">Want d'oprechte ware <rhyme label="a" type="f" corresp="#s6:l1">vreughde</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Alleen uyt de deughde <rhyme label="c" type="m">spruyt</rhyme>;</l>
        <l id="s6:l6" met="4" type="+-">Geluck Bruyd'gom en Vrouw <rhyme label="c" type="m" corresp="#s6:l5">Bruydt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Princen, d'opper-Prins der <rhyme label="a" type="f">Princen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Die al eeuwigh eeuwigh <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Die al goede gaven <rhyme label="b" type="m" corresp="#s7:l2">geeft</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Geeft u al 't geen ghy meught <rhyme label="a" type="f" corresp="#s7:l1">wenschen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Wenschen wy u tot <rhyme label="c" type="m">besluyt</rhyme>;</l>
        <l id="s7:l6" met="4" type="+-">Geluck Bruyd'gom en Vrouw <rhyme label="c" type="m" corresp="#s7:l5">Bruydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
