    <melody>La Dauphine</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NAdien, dat eender vrouwen <rhyme label="a" type="m">man</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Een Bischop wezen moet, hoe <rhyme label="a" type="m" corresp="#s1:l1">kan</rhyme></l>
        <l id="s1:l3" met="4" type="-+">De Roomse Kerk hem dan <rhyme label="b" type="m">verbien</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Een Echte vrou te <rhyme label="c" type="f">trouwen</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">VVild my hier eens bescheyd op <rhyme label="b" type="m" corresp="#s1:l3">bien</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Onwetende <rhyme label="c" type="f" corresp="#s1:l4">Papouwen</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al zoet al zachtjes fijn <rhyme label="a" type="m">gezel</rhyme>!</l>
        <l id="s2:l2" met="4" type="-+">Ghy sijt u selven tot een <rhyme label="a" type="m" corresp="#s2:l1">quel</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Want heeft hier Paulus ’t huw’lijks <rhyme label="b" type="m">bed</rhyme></l>
        <l id="s2:l4" met="3" type="-+">De Kerk zoo hoog <rhyme label="c" type="f">bevolen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Hoe dorst hy tegen deze <rhyme label="b" type="m" corresp="#s2:l3">wet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dan zoo veel Maegden <rhyme label="c" type="f" corresp="#s2:l4">scholen</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Iae hoe en nam hy selffs geen <rhyme label="a" type="m">vrou</rhyme>?</l>
        <l id="s3:l2" met="4" type="-+">Om door’t exempel van zijn <rhyme label="a" type="m" corresp="#s3:l1">trou</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Zijn woord te geven meerder <rhyme label="b" type="m">magt</rhyme>?</l>
        <l id="s3:l4" met="3" type="-+">En ’t lieve volk des <rhyme label="c" type="f">Heren</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Ook, nae de zin van’t fijn <rhyme label="b" type="m" corresp="#s3:l3">geslagt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Lichaem’lijk te <rhyme label="c" type="f" corresp="#s3:l4">vermeren</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer neen dit dee d’Apostel <rhyme label="a" type="m">niet</rhyme>.</l>
        <l id="s4:l2" met="4" type="-+">En als men al de Kerk <rhyme label="a" type="m" corresp="#s4:l1">doorziet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Zoo’n isser van den oudsten <rhyme label="b" type="m">tijd</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Een Bisschop niet te <rhyme label="c" type="f">vinnen</rhyme>;</l>
        <l id="s4:l5" met="4" type="-+">Die eerst getrout, daer nae <rhyme label="b" type="m" corresp="#s4:l3">gewijd</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dorst kind’ren blijven <rhyme label="c" type="f" corresp="#s4:l4">winnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ik laet dan nae de wyding <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Van nieus de trou te nemen <rhyme label="a" type="m" corresp="#s5:l1">aen</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Gelijk als uw’ Ministers <rhyme label="b" type="m">groen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Wel door een nieuwen <rhyme label="c" type="f">zegen</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Van Patriarchen durven <rhyme label="b" type="m" corresp="#s5:l3">doen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">’t Welck Grieken noyt en <rhyme label="c" type="f" corresp="#s5:l4">plegen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Vry Israel vry! wast en <rhyme label="a" type="m">verbreyd</rhyme>.</l>
        <l id="s6:l2" met="4" type="-+">Iae neemt beneffens ’t wijf, de <rhyme label="a" type="m" corresp="#s6:l1">meyt</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Bewust dat daer geen zond en <rhyme label="b" type="m">kan</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Aen uw’ geslagt <rhyme label="c" type="f">beklijven</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Al quaemdy nacht voor nacht een <rhyme label="b" type="m" corresp="#s6:l3">man</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Te werden van twee <rhyme label="c" type="f" corresp="#s6:l4">wijven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dan dit was Paulus meyning <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Als hy ons dit gebod nae <rhyme label="a" type="m" corresp="#s7:l1">liet</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Maer wel dat (nae gemene <rhyme label="b" type="m">tael</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van alle d’oude <rhyme label="c" type="f">Vad’ren</rhyme>)</l>
        <l id="s7:l5" met="4" type="-+">Onwijdbaer was al die <rhyme label="b" type="m" corresp="#s7:l3">tweemael</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Ten huw’lijk dorst <rhyme label="c" type="f" corresp="#s7:l4">vergad’ren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dus leggent all’ de Leeraers <rhyme label="a" type="m">uit</rhyme>.</l>
        <l id="s8:l2" met="4" type="-+">Gaet dan en doed met dit <rhyme label="a" type="m" corresp="#s8:l1">beduid</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Uw’ voordel daer ghy kunt of <rhyme label="b" type="m">meugt</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Maer liever zou ‘k <rhyme label="c" type="f">vermoeyen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Dat hier van de Geneefse <rhyme label="b" type="m" corresp="#s8:l3">jeugd</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Zeer weynig aen zal <rhyme label="c" type="f" corresp="#s8:l4">groeyen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
