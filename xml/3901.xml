  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk weet noch drie <rhyme label="a" type="f">ghesusterkens</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die ongestoruen <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dat si God niet en <rhyme label="c" type="f">vreesen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Des lijdt mijn hertken <rhyme label="b" type="m" corresp="#s1:l2">pijn</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Och maechdekens ghi moet <rhyme label="a" type="f">beghinnen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die wile dat ghi hebt den <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Al sijt ghi noch ionc van <rhyme label="c" type="f">iaren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ghi en hebte gheen <rhyme label="b" type="m" corresp="#s2:l2">respijt</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O maechden ghi moet <rhyme label="a" type="f">beginnen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die wile ghi hebt den <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Oft ick wil van v <rhyme label="c" type="f">varen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ende soecken mijn <rhyme label="b" type="m" corresp="#s3:l2">profijt</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Paulus heeft <rhyme label="a" type="f">ghesproken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Soe veruaerlijck een <rhyme label="b" type="m">woert</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Die leuet naden <rhyme label="c" type="f">vleesche</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Moet steruen die eewige <rhyme label="b" type="m" corresp="#s4:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wee der armer <rhyme label="a" type="f">sielen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Diet al betalen <rhyme label="b" type="m">moet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Laet ons voer God gaen <rhyme label="c" type="f">knielen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dat hi sijn sentencie <rhyme label="b" type="m" corresp="#s5:l2">versoet</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Och leuen wi naden <rhyme label="a" type="f">gheeste</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Ende hebben de vreese van <rhyme label="b" type="m">God</rhyme></l>
        <l id="s6:l3" met="3" type="-+">So en doruen wi niet <rhyme label="c" type="f">sorghen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Alvoer die eewighe <rhyme label="b" type="m" corresp="#s6:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O maechdekens van onsen <rhyme label="a" type="f">conuente</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dit is ter eeren van <rhyme label="b" type="m">dy</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Ick ben noch arm van <rhyme label="c" type="f">duechden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Bidt God dat hi mijn hertken <rhyme label="b" type="m" corresp="#s7:l2">verbly</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
