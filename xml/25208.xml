    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Op de eerste van alle <rhyme label="a" type="m">dagen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">dat die werelt geschapen <rhyme label="b" type="m">was</rhyme></l>
        <l id="s1:l3" met="4" type="-+">oft oock dat ons van doets <rhyme label="a" type="m" corresp="#s1:l1">plagen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Christus verrisende <rhyme label="b" type="m" corresp="#s1:l2">genas</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Alle traecheijt iagende <rhyme label="a" type="m">wech</rhyme></l>
        <l id="s2:l2" met="4" type="-+">laet inden nacht haestich <rhyme label="b" type="m">opstaen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">ons hert heffende tot den <rhyme label="a" type="m" corresp="#s2:l1">heer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">doende nae des propheets <rhyme label="b" type="m" corresp="#s2:l2">vermaen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Opdat hij ons gebet <rhyme label="a" type="m">verhoert</rhyme></l>
        <l id="s3:l2" met="4" type="-+">tot ons vuijtsteect sijn <rhyme label="b" type="m">rechterhandt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">ende gesuijuert van sons <rhyme label="a" type="m" corresp="#s3:l1">moert</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Brenck weder tot des hemels <rhyme label="b" type="m" corresp="#s3:l2">land</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Op dat al die in desen <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">van deesen heijlich dag <rhyme label="b" type="m">bequaem</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Louen in stilt, godt metter <rhyme label="a" type="m" corresp="#s4:l1">vlijt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">hij geeft sijn gauen <rhyme label="b" type="m" corresp="#s4:l2">aengenaem</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als nu o vaderlick <rhyme label="a" type="m">claerheijt</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Laet ver wesen lust die vuijl <rhyme label="b" type="m">maect</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Wij bidden v, met die <rhyme label="a" type="m" corresp="#s5:l1">waerheijt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">omprofitijege werken <rhyme label="b" type="m" corresp="#s5:l2">staeckt</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">dat ons lichaem niet wort <rhyme label="a" type="m">besmet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">off vuijl, waer door wij <rhyme label="b" type="m">ewelijck</rhyme></l>
        <l id="s6:l3" met="4" type="-+">souden branden met helsche <rhyme label="a" type="m" corresp="#s6:l1">vet</rhyme></l>
        <l id="s6:l4" met="4" type="-+">int vier hier naemaels <rhyme label="b" type="m" corresp="#s6:l2">grouwelick</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hierom verlosser bidden <rhyme label="a" type="m">wij</rhyme></l>
        <l id="s7:l2" met="4" type="-+">dat ghij ons sond vuijtwijchen <rhyme label="b" type="m">wilt</rhyme></l>
        <l id="s7:l3" met="4" type="-+">ende ons gunnen gauen <rhyme label="a" type="m" corresp="#s7:l1">blij</rhyme></l>
        <l id="s7:l4" met="4" type="-+">van ewich rust en salich <rhyme label="b" type="m" corresp="#s7:l2">stilt</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dat wij als ballingh van ons <rhyme label="a" type="m">vleisch</rhyme></l>
        <l id="s8:l2" met="4" type="-+">bij ons blijuende immers <rhyme label="b" type="m">reijn</rhyme></l>
        <l id="s8:l3" met="4" type="-+">mochten comen tot v <rhyme label="a" type="m" corresp="#s8:l1">palleijs</rhyme></l>
        <l id="s8:l4" met="4" type="-+">en singen loff, glorij <rhyme label="b" type="m" corresp="#s8:l2">gemeijn</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dit gunt ons vader <rhyme label="a" type="m">goedertier</rhyme></l>
        <l id="s9:l2" met="4" type="-+">oeck ghij die vader zijt <rhyme label="b" type="m">gelijck</rhyme></l>
        <l id="s9:l3" met="4" type="-+">met de geest ons trooster <rhyme label="a" type="m" corresp="#s9:l1">hier</rhyme></l>
        <l id="s9:l4" met="4" type="-+">regnerende drie <rhyme label="b" type="m" corresp="#s9:l2">ewelijck</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
