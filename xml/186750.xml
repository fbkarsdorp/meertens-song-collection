  <author>Joannes Six van Chandelier</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Wy belyden, Heer, uw <rhyme label="a" type="m">lof</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Heer, uw lof belyden <rhyme label="b" type="m">wy</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Want uw naam, ons nu <rhyme label="b" type="m" corresp="#s1:l2">naby</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Geeft ons, door uw byzyn, <rhyme label="a" type="m" corresp="#s1:l1">stof</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dies verteltmen, wyd, en <rhyme label="c" type="m">breed</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Van de wondren die gy <rhyme label="c" type="m" corresp="#s1:l5">deed</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als ik eens het ampt <rhyme label="a" type="m">ontfing</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">My bestemt, en <rhyme label="b" type="m">toegesegt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Doe ik in 't gerichte <rhyme label="b" type="m" corresp="#s2:l2">recht</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">'t Land, met syn <rhyme label="a" type="m" corresp="#s2:l1">bewooneling</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Smolt, en sweem van <rhyme label="c" type="m">ooverlast</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Maar ik maak syn stylen <rhyme label="c" type="m" corresp="#s2:l5">vast</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Tot het sinneloos <rhyme label="a" type="m">geslacht</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Sei ik, zy doch niet <rhyme label="b" type="m">ontsint</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Volg myn raad, o godloos <rhyme label="b" type="m" corresp="#s3:l2">kind</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En verhoog uw hoorn, noch <rhyme label="a" type="m" corresp="#s3:l1">magt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Steek uw hoornen niet hoog <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Noch spreek styf van hals, noch <rhyme label="c" type="m" corresp="#s3:l5">kop</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want een mans <rhyme label="a" type="m">verhoogenis</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Komt uit oost, noch west, hem <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Noch uit een woestyn van <rhyme label="b" type="m" corresp="#s4:l2">daan</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Maar van God, die richter <rhyme label="a" type="m" corresp="#s4:l1">is</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Die verneedert, die <rhyme label="c" type="m">verhoogt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Als des weerelds <rhyme label="c" type="m" corresp="#s4:l5">oppervoogd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Want in 's Heeren hand <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Is een beeker droeven <rhyme label="b" type="m">wyn</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Waar in mengelingen <rhyme label="b" type="m" corresp="#s5:l2">zyn</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Daar uit schenkt hy ieder <rhyme label="a" type="m" corresp="#s5:l1">een</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Doch al 't godloos volk op <rhyme label="c" type="m">aard</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Suigt, en drinkt syn moer, <rhyme label="c" type="m" corresp="#s5:l5">beswaart</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ik verkondig dies <rhyme label="a" type="m">voortaan</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Psalmsing steeds van Jakobs <rhyme label="b" type="m">God</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En zal van het godloos <rhyme label="b" type="m" corresp="#s6:l2">rot</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Al hun hoornen af doen <rhyme label="a" type="m" corresp="#s6:l1">slaan</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Wie gerechtigheit <rhyme label="c" type="m">beoogt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Siet syn hoornen dan <rhyme label="c" type="m" corresp="#s6:l5">verhoogt</rhyme>.</l>
      </lg>
    </lg>
  </text>
