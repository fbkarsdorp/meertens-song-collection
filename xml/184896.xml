    <melody>Gelijk de hert spoedt</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WAnner het <rhyme label="a" type="m">gemoet</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Begint te <rhyme label="b" type="f">aenmercken</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Het tydelyck <rhyme label="a" type="m" corresp="#s1:l1">goedt</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">En ydele <rhyme label="b" type="f" corresp="#s1:l2">wercken</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Ontsteken myn <rhyme label="c" type="f">sinnen</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Tot u, mynen <rhyme label="d" type="m">Godt</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Om u te <rhyme label="c" type="f" corresp="#s1:l5">beminnen</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Myn weerdighste <rhyme label="d" type="m" corresp="#s1:l6">lot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Aenfien ick in't <rhyme label="a" type="m">quaedt</rhyme></l>
        <l id="s2:l2" met="2" type="-+">De boose <rhyme label="b" type="f">genuchten</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Het sal my te <rhyme label="a" type="m" corresp="#s2:l1">laet</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Doen eeuwelyck <rhyme label="b" type="f" corresp="#s2:l2">suchten</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Uw' liefde sal <rhyme label="c" type="f">geven</rhyme></l>
        <l id="s2:l6" met="2" type="-+">De eeuwighe <rhyme label="d" type="m">vreught</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">En doen by u <rhyme label="c" type="f" corresp="#s2:l5">leven</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Dees brandende <rhyme label="d" type="m" corresp="#s2:l6">Deught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">t'Vermaekelyck <rhyme label="a" type="m">spel</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Wat kan my dit <rhyme label="b" type="f">baeten</rhyme>?</l>
        <l id="s3:l3" met="2" type="-+">De vreughden gaen <rhyme label="a" type="m" corresp="#s3:l1">snel</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Door sterven te <rhyme label="b" type="f" corresp="#s3:l2">laeten</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Uw' liefde blyft <rhyme label="c" type="f">branden</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Tot dat men u <rhyme label="d" type="m">vindt</rhyme>;</l>
        <l id="s3:l7" met="2" type="-+">Met d'eeuwige <rhyme label="c" type="f" corresp="#s3:l5">banden</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Sy ons aen u <rhyme label="d" type="m" corresp="#s3:l6">bindt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Wat sal doch hier <rhyme label="a" type="m">naer</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Den Ryckdom ons <rhyme label="b" type="f">geven</rhyme>?</l>
        <l id="s4:l3" met="2" type="-+">Naer duysent <rhyme label="a" type="m" corresp="#s4:l1">gevaer</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Een jammerlyck <rhyme label="b" type="f" corresp="#s4:l2">leven</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Uw' liefde sal <rhyme label="c" type="f">winnen</rhyme></l>
        <l id="s4:l6" met="2" type="-+">t'Ontsterffelyck <rhyme label="d" type="m">goedt</rhyme>:</l>
        <l id="s4:l7" met="2" type="-+">Dat dese van <rhyme label="c" type="f" corresp="#s4:l5">binnen</rhyme></l>
        <l id="s4:l8" met="2" type="-+">My, Jesu, meer <rhyme label="d" type="m" corresp="#s4:l6">voedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
