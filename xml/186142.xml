  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Men heeft, geloof mij op mijn <rhyme label="a" type="m">woord</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Een ganschen wijnberg <rhyme label="b" type="f">noodig</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Eer dat de neus is, zooals 't <rhyme label="a" type="m" corresp="#s1:l1">hoort</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Is dit niet <rhyme label="b" type="f" corresp="#s1:l2">overbodig</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En gaan wij 's avonds er van <rhyme label="a" type="m">door</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wij vreezen geen <rhyme label="b" type="f">gevaren</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">De roode neus, die gaat ons <rhyme label="a" type="m" corresp="#s2:l1">voor</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die dient ons tot <rhyme label="b" type="f" corresp="#s2:l2">lantaren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een boom, die staat in vollen <rhyme label="a" type="m">groei</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Vindt ieder prachtig, <rhyme label="b" type="f">schoon</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Mijn neus altijd in vollen <rhyme label="a" type="m" corresp="#s3:l1">bloei</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Maakt die geen <rhyme label="b" type="f" corresp="#s3:l2">prachtvertoon</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hoe angstig ziet de waard mij <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dit prachtstuk baart hem <rhyme label="b" type="f">zorgen</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Want ach! deez' neus gaat mij niet <rhyme label="a" type="m" corresp="#s4:l1">aan</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">De waard moet hem mij <rhyme label="b" type="f" corresp="#s4:l2">borgen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Neemt plaats naast mij bij 't volle <rhyme label="a" type="m">vat</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Het glas omhoog <rhyme label="b" type="f">geheven</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Dit eedle kostelijke <rhyme label="a" type="m" corresp="#s5:l1">nat</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Heeft mij zoo'n neus <rhyme label="b" type="f" corresp="#s5:l2">gegeven</rhyme>.</l>
      </lg>
    </lg>
  </text>
