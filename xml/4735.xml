    <tags/>
    <melody>Al hebben de prinsen haar wens</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE schurfde hand, en d’aerde <rhyme label="a" type="m">pot</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Wel vougen op ’t gelapte <rhyme label="a" type="m" corresp="#s1:l1">rot</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Van de Beed’laers Mantel, <rhyme label="b" type="m">die’k</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Dragen zie de lichte <rhyme label="b" type="m" corresp="#s1:l3">Griek</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De lichte Griek, den nieuwen <rhyme label="a" type="m">haen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die al nae dat de winden <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Wend de staert, en drayt het <rhyme label="b" type="m">hooofd</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Nu eens dus, nu zoo <rhyme label="b" type="m" corresp="#s2:l3">gelooft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Helaes! d’onscham’le man en <rhyme label="a" type="m">doedt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Niet anders, dan hy staeg en <rhyme label="a" type="m" corresp="#s3:l1">wroedt</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Inde mis hoop inde <rhyme label="b" type="m">krebb</rhyme>’,</l>
        <l id="s3:l4" met="4" type="+-">Nae wat ouds van wol of <rhyme label="b" type="m" corresp="#s3:l3">webb</rhyme>’.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">’t Geen Christus Kerk van aen <rhyme label="a" type="m">begin</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Als ondeugd daer dee werpen <rhyme label="a" type="m" corresp="#s4:l1">in</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Zietmen hem nu weed’rom <rhyme label="b" type="m">daer</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Rapen uit, en nemen <rhyme label="b" type="m" corresp="#s4:l3">waer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">All’ d’oude vellen komen <rhyme label="a" type="m">weer</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Van Simon magus, van <rhyme label="a" type="m" corresp="#s5:l1">Aeër</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Van Nestorius, van <rhyme label="b" type="m">Novaet</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Vigilantius, en <rhyme label="b" type="m" corresp="#s5:l3">Donaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nu als een man, noch eens <rhyme label="a" type="m">geroerdt</rhyme>:</l>
        <l id="s6:l2" met="4" type="-+">De mantel moet noch sijn <rhyme label="a" type="m" corresp="#s6:l1">gevoerdt</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Zoukt ghy zult noch ’t vuile <rhyme label="b" type="m">slet</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Vinden van Harmannus <rhyme label="b" type="m" corresp="#s6:l3">wet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">’t Is wel gelukt. Maer <rhyme label="a" type="m">Berengaer</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Heeft, nu gele’en vijf honderd <rhyme label="a" type="m" corresp="#s7:l1">iaer</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Hier zijn vodden ook <rhyme label="b" type="m">gebrocht</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Deze dient ook <rhyme label="b" type="m" corresp="#s7:l3">opgezocht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och zoo! dat is noch ’t beste <rhyme label="a" type="m">voer</rhyme>.</l>
        <l id="s8:l2" met="4" type="-+">Verlapt het vry van schoer te <rhyme label="a" type="m" corresp="#s8:l1">schoer</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">Schorter iet, dat stoppen <rhyme label="b" type="m">flus</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Wiclef, en Ioannes <rhyme label="b" type="m" corresp="#s8:l3">Hus</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ziet daer; dat’s nu de rechte <rhyme label="a" type="m">slag</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Van beed’laers-mantel, daermen <rhyme label="a" type="m" corresp="#s9:l1">plag</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Mee te gaen van deur te <rhyme label="b" type="m">deur</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Nae de nieuwe Griekse <rhyme label="b" type="m" corresp="#s9:l3">keur</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wat guit komt hier? wat fun gaet <rhyme label="a" type="m">daer</rhyme>?</l>
        <l id="s10:l2" met="4" type="-+">God help u armen <rhyme label="a" type="m" corresp="#s10:l1">bedelaer</rhyme>!</l>
        <l id="s10:l3" met="4" type="+-">Maer gh’ en helpt u zelven <rhyme label="b" type="m">niet</rhyme>:</l>
        <l id="s10:l4" met="4" type="+-">Daerom blijfje in ’t <rhyme label="b" type="m" corresp="#s10:l3">verdriet</rhyme>.</l>
      </lg>
    </lg>
  </text>
