<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>174131</id>
    <date>
      <year-start>1789</year-start>
      <year-end>1789</year-end>
    </date>
    <tags>
      <tag>political song</tag>
      <tag>patriotic song</tag>
    </tags>
    <melody>Hoe zoet is het daar de vriendschap woont</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wanneer de Dwang, met zweep en <rhyme label="a" type="m">spoor</rhyme></l>
        <l id="s1:l2" met="3" type="-+">De Vryheid trillen <rhyme label="b" type="m">deedt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Aan burger-klagt gaf geen <rhyme label="a" type="m" corresp="#s1:l1">gehoor</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maar ze in den kerker <rhyme label="b" type="m" corresp="#s1:l2">smeet</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Toen zag men, dat de <rhyme label="c" type="m">Burgery</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Zich maakte van die <rhyme label="c" type="m" corresp="#s1:l5">Dwinglandy</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Gantsch vry, gantsch vry, gantsch <rhyme label="c" type="m" corresp="#s1:l5">vry</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Der Batavieren <rhyme label="a" type="m">Heldenmoed</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hun trouw aan eed en <rhyme label="b" type="m">pligt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hun zugt voor Vryheids Speer en <rhyme label="a" type="m" corresp="#s2:l1">Hoed</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Heeft wond'ren toen <rhyme label="b" type="m" corresp="#s2:l2">verricht</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">De vrugt gerypt, die we, in deez' <rhyme label="c" type="m">tyd</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Nog plukken kunnen, zelfs den <rhyme label="c" type="m" corresp="#s2:l5">Nyd</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Ten spyt, ten spyt, ten <rhyme label="c" type="m" corresp="#s2:l5">spyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daar na heeft ons een laffe <rhyme label="a" type="m">rust</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ook weêr, op 't klaarst, <rhyme label="b" type="m">getoond</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wanneer de moed ligt <rhyme label="a" type="m" corresp="#s3:l1">uitgebluscht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hoe elk dan wordt <rhyme label="b" type="m" corresp="#s3:l2">gehoond</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die vry wil syn; --- hoe men dan 't <rhyme label="c" type="m">Recht</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Aan yder' Braaven stout <rhyme label="c" type="m" corresp="#s3:l5">ontregt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ja, slegt, ja, slegt, ja, <rhyme label="c" type="m" corresp="#s3:l5">slegt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dit smerte Neerlands <rhyme label="a" type="m">Burgery</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En nam 't geweer ter <rhyme label="b" type="m">hand</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hun aller Spreuk was, Dood of <rhyme label="a" type="m" corresp="#s4:l1">Vry</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In 't dierbaar <rhyme label="b" type="m" corresp="#s4:l2">Vaderland</rhyme>;</l>
        <l id="s4:l5" met="4" type="-+">Hun moed, door helden <rhyme label="c" type="m">aangespoord</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Bragt ons byna herstelling <rhyme label="c" type="m" corresp="#s4:l5">voord</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Vol vreugd, vol vreugd, vol <rhyme label="c" type="m" corresp="#s4:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doch List, Geweld en <rhyme label="a" type="m">Dwinglandy</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Voorzagen haaren <rhyme label="b" type="m">val</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En sprongen toen elkandren <rhyme label="a" type="m" corresp="#s5:l1">by</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">De Heerschzugt, een <rhyme label="b" type="m" corresp="#s5:l2">geval</rhyme>;</l>
        <l id="s5:l5" met="4" type="-+">'t Gelukte, en 't was met ons <rhyme label="c" type="m">gedaan</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Men liet ons weer aan banden <rhyme label="c" type="m" corresp="#s5:l5">gaan</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">ô Smert, ô smert, ô <rhyme label="c" type="m" corresp="#s5:l5">smert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doch valt ons eens dat heil te <rhyme label="a" type="m">beurt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Van 't Machtig <rhyme label="b" type="m">Lelleryk</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ons Neerland dat nu zugt en <rhyme label="a" type="m" corresp="#s6:l1">treurt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Word dan aan hun <rhyme label="b" type="m" corresp="#s6:l2">gelyk</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Bataven! Franschen! gaan u <rhyme label="c" type="m">voor</rhyme>.</l>
        <l id="s6:l6" met="4" type="-+">Zy wezen u het helden <rhyme label="c" type="m" corresp="#s6:l5">spoor</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Vol Eer, vol eer, vol <rhyme label="c" type="m" corresp="#s6:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Eerlang wagt u die glorie <rhyme label="a" type="m">dag</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hy koomt .... dit is <rhyme label="b" type="m">gewis</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Volvoert dan 't geen u moed <rhyme label="a" type="m" corresp="#s7:l1">vermag</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Herstel dan u <rhyme label="b" type="m" corresp="#s7:l2">gemis</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En jaag dan 't Vloekrot ten <rhyme label="c" type="m">besluit</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Voor eeuwig Neerlands Erfdeel <rhyme label="c" type="m" corresp="#s7:l5">uit</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Zing dan, Triumph, <rhyme label="c" type="m" corresp="#s7:l5">Triumph</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
