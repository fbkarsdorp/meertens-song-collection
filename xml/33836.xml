    <melody>Mijn lippen open Heer</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ONs Vader, die <rhyme label="a" type="f">woonaghtigh</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Sijt in de <rhyme label="b" type="m">Heemelen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Laet ygelijk <rhyme label="a" type="f" corresp="#s1:l1">eendrachtigh</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Uw Name <rhyme label="b" type="m" corresp="#s1:l2">heyligen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Toekoomen laet uw <rhyme label="a" type="f">Rijke</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Uw wille laet <rhyme label="b" type="m">geschien</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">In d'Hemel, <rhyme label="a" type="f" corresp="#s2:l1">desgelijke</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Op 't Aertrijk by de <rhyme label="b" type="m" corresp="#s2:l2">lien</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ons dagelijksche <rhyme label="a" type="f">spijsen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wilt heden geven <rhyme label="b" type="m">milt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als wy genaed' <rhyme label="a" type="f" corresp="#s3:l1">bewijsen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ons ook vergeeven <rhyme label="b" type="m" corresp="#s3:l2">wilt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En ons tot geene <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In quellingh vallen <rhyme label="b" type="m">laet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Maer wilt ons togh <rhyme label="a" type="f" corresp="#s4:l1">bevrijden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van 't geene dat is quaet, <rhyme label="b" type="m" corresp="#s4:l2">Amen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Is 't saek dat gy de <rhyme label="a" type="f">menschen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Vergeeft al hare <rhyme label="b" type="m">schult</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Soo sal Godt nae uw' <rhyme label="a" type="f" corresp="#s5:l1">wenschen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met uw hebben <rhyme label="b" type="m" corresp="#s5:l2">verdult</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer wilt gy niet <rhyme label="a" type="f">vergeeven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Een anders schulden <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Uw Vader ook al <rhyme label="a" type="f" corresp="#s6:l1">eeven</rhyme></l>
        <l id="s6:l4" met="3" type="-+">U niet vergeeven <rhyme label="b" type="m" corresp="#s6:l2">sal</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
