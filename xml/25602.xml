  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Als kinder nae’t <rhyme label="a" type="f">behaghen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wt Godt gheboren <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Laet ons sijn Iock nu <rhyme label="a" type="f" corresp="#s1:l1">draghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En in sijn vreese <rhyme label="b" type="m" corresp="#s1:l2">soet</rhyme></l>
        <l id="s1:l5" met="5" type="-+">Wandelen, t’zijn ghenoeghelijcke <rhyme label="c" type="f">dinghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En licht om te <rhyme label="a" type="f">volbringhen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En goet om te <rhyme label="b" type="m">verstaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Godt moet men <rhyme label="a" type="f" corresp="#s2:l1">sonderlinghen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Voor ooghen hebben <rhyme label="b" type="m" corresp="#s2:l2">saen</rhyme>,</l>
        <l id="s2:l5" met="5" type="-+">Die ons can dooden door sijn crachtich <rhyme label="c" type="f">wesen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Laet ons doch nu tot <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Aensien der Hellen <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Daer wy moesten <rhyme label="a" type="f" corresp="#s3:l1">verknesen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Eeuwich in nooden <rhyme label="b" type="m" corresp="#s3:l2">zijn</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">Die wy verdient hebben met onsen <rhyme label="c" type="f">zonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">T’waer goet dat wy <rhyme label="a" type="f">deurgronden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die clacht die ons nae <rhyme label="b" type="m">comt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Over ons quaet <rhyme label="a" type="f" corresp="#s4:l1">bevonden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En t’oordeel dat <rhyme label="b" type="m" corresp="#s4:l2">verdomt</rhyme>,</l>
        <l id="s4:l5" met="5" type="-+">En dat wy sien de doot voor onsen <rhyme label="c" type="f">ooghen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Het strijden <rhyme label="a" type="f">onvermoghen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat ons te handen <rhyme label="b" type="m">stoot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die strijcken <rhyme label="a" type="f" corresp="#s5:l1">uytghetoghen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ons ghestelt cleyn en <rhyme label="b" type="m" corresp="#s5:l2">groot</rhyme>,</l>
        <l id="s5:l5" met="5" type="-+">Soo veel alsser wellusten in ons <rhyme label="c" type="f">wercken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Inwendich wy <rhyme label="a" type="f">bemercken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dat wy zijn <rhyme label="b" type="m">onvolmaeckt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dit doet Gods vrees <rhyme label="a" type="f" corresp="#s6:l1">verstercken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wie dese dinghen <rhyme label="b" type="m" corresp="#s6:l2">smaeckt</rhyme>,</l>
        <l id="s6:l5" met="5" type="-+">Sal hem gewis tot der vreesen Gods <rhyme label="c" type="f">keeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En die sal hem dan <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En brenghen groot <rhyme label="b" type="m">profijt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Want die vreese des <rhyme label="a" type="f" corresp="#s7:l1">Heeren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Maeckt ons der zonden <rhyme label="b" type="m" corresp="#s7:l2">quijt</rhyme>,</l>
        <l id="s7:l5" met="5" type="-+">Wie Godt vreest, die sal goet doen met <rhyme label="c" type="f">verlanghen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Rechte vrees Gods <rhyme label="a" type="f">ontfanghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Baert groote <rhyme label="b" type="m">danckbaerheyt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Voortgaen in haer <rhyme label="a" type="f" corresp="#s8:l1">ganghen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Perfectelijck <rhyme label="b" type="m" corresp="#s8:l2">bereyt</rhyme></l>
        <l id="s8:l5" met="5" type="-+">Tot den eeuwighen leven nae Gods <rhyme label="c" type="f">wille</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">In die Hemelsche <rhyme label="a" type="f">scharen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Sy ons oock heerlijck <rhyme label="b" type="m">maeckt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Dat wy aldaer <rhyme label="a" type="f" corresp="#s9:l1">vergaren</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Iae comen recht <rhyme label="b" type="m" corresp="#s9:l2">gheraeckt</rhyme>,</l>
        <l id="s9:l5" met="5" type="-+">Sy is reyn, en doet ons eeuwelijck <rhyme label="c" type="f">blijven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Naer Tobias <rhyme label="a" type="f">beschrijven</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Veel goet comt ons met <rhyme label="b" type="m">haer</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Soo wy door s’Gheests <rhyme label="a" type="f" corresp="#s10:l1">verstijven</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Neerstelijck nemen <rhyme label="b" type="m" corresp="#s10:l2">waer</rhyme></l>
        <l id="s10:l5" met="5" type="-+">Om recht te doen al ons leven op <rhyme label="c" type="f">erden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">En die alsoo <rhyme label="a" type="f">volherden</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Sullen gheseghent <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Die vreuchde sal haer <rhyme label="a" type="f" corresp="#s11:l1">werden</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">En die eeuwighe <rhyme label="b" type="m" corresp="#s11:l2">pijn</rhyme></l>
        <l id="s11:l5" met="5" type="-+">En sullen sy in eeuwicheyt niet <rhyme label="c" type="f">smaken</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Recht laet ons nu <rhyme label="a" type="f">opwaken</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Nu wy tijdt hebben <rhyme label="b" type="m">wel</rhyme></l>
        <l id="s12:l3" met="3" type="-+">In Gods vrees ons <rhyme label="a" type="f" corresp="#s12:l1">vermaken</rhyme></l>
        <l id="s12:l4" met="3" type="-+">En houden sijn <rhyme label="b" type="m" corresp="#s12:l2">bevel</rhyme>,</l>
        <l id="s12:l5" met="5" type="-+">Op dat wy dese creuchd’ moghen <rhyme label="c" type="f">ghenieten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Stort en wilt doch <rhyme label="a" type="f">uytgieten</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Op ons Heer uwen <rhyme label="b" type="m">Gheest</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Dat wy sonder <rhyme label="a" type="f" corresp="#s13:l1">verdrieten</rhyme></l>
        <l id="s13:l4" met="3" type="-+">V vreese <rhyme label="b" type="m" corresp="#s13:l2">aldermeest</rhyme></l>
        <l id="s13:l5" met="5" type="-+">Kindtlijck in ons herte moghen <rhyme label="c" type="f">bewaren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
