  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">REchtvaerdig zydy <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En bill’k zijn all’ uw’ <rhyme label="b" type="f">wegen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Den eenen geefdy <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En d’ander gundy <rhyme label="b" type="f" corresp="#s1:l2">zegen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Door lijdzaemheyd van <rhyme label="c" type="f">moede</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Want die God lieft, <rhyme label="d" type="m">behoeft</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Niet anders als de <rhyme label="c" type="f" corresp="#s1:l5">roede</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Daer deur hy werd <rhyme label="d" type="m" corresp="#s1:l6">beproeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het bleek wel eertijds <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Tobias Goods <rhyme label="b" type="f">beminde</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Die nae zoo veel <rhyme label="a" type="m" corresp="#s2:l1">weldaen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Den Hemel liet <rhyme label="b" type="f" corresp="#s2:l2">verblinden</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Niet dan om hem te <rhyme label="c" type="f">kronen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Met palmen van <rhyme label="d" type="m">geduld</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">End’ als in ’t vier te <rhyme label="c" type="f" corresp="#s2:l5">tonen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">De glans van zijn <rhyme label="d" type="m" corresp="#s2:l6">verguld</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dus prouft des Heren <rhyme label="a" type="m">hand</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Noch op den dag van <rhyme label="b" type="f">huyden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Wel mennigmael de <rhyme label="a" type="m" corresp="#s3:l1">stand</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van d’alderbeste <rhyme label="b" type="f" corresp="#s3:l2">luyden</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">En laet die hen <rhyme label="c" type="f">verdrukken</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met list en met <rhyme label="d" type="m">geweld</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">De kans alom <rhyme label="c" type="f" corresp="#s3:l5">gelukken</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Te huys, te hoof, te <rhyme label="d" type="m" corresp="#s3:l6">veld</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer dat zich de <rhyme label="a" type="m">tyran</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Daer over niet en <rhyme label="b" type="f">romme</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Noch ook de goede <rhyme label="a" type="m" corresp="#s4:l1">man</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Tot geen wanhoop en <rhyme label="b" type="f" corresp="#s4:l2">komme</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Nae dien hier op der <rhyme label="c" type="f">aerde</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Den Goddelijkke <rhyme label="d" type="m">raed</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Nu voorspoed, nu <rhyme label="c" type="f" corresp="#s4:l5">omwaerde</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Doedt hebben goed’ en <rhyme label="d" type="m" corresp="#s4:l6">quaed</rhyme>’.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Iae Godes milde <rhyme label="a" type="m">zucht</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Om zijn gerecht te <rhyme label="b" type="f">tonen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En liet noyt aerdse <rhyme label="a" type="m" corresp="#s5:l1">tucht</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met aerdsgenot te <rhyme label="b" type="f" corresp="#s5:l2">lonen</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Aen mannen ofte <rhyme label="c" type="f">wijven</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">Die, mids haer <rhyme label="d" type="m">ongeloof</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Versteken zullen <rhyme label="c" type="f" corresp="#s5:l5">blijven</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Van d’Hemelrijkse <rhyme label="d" type="m" corresp="#s5:l6">proof</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Des liet hy, zoo men <rhyme label="a" type="m">weet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wel eer de Stadt van <rhyme label="b" type="f">Romen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Een magt zoo wijd en <rhyme label="a" type="m" corresp="#s6:l1">breed</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Te Zee, te Land, <rhyme label="b" type="f" corresp="#s6:l2">bekomen</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Het was de goede <rhyme label="c" type="f">oorde</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die voor haer <rhyme label="d" type="m">Republijk</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">By Gode, ’t pad <rhyme label="c" type="f" corresp="#s6:l5">bespoorde</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Tot een zoo groten <rhyme label="d" type="m" corresp="#s6:l6">Rijk</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zelfs ook de rijke <rhyme label="a" type="m">wrek</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Helaes! om dat hy <rhyme label="b" type="f">lijden</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Most jammer en <rhyme label="a" type="m" corresp="#s7:l1">gebrek</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Een eeuwigheyd van <rhyme label="b" type="f" corresp="#s7:l2">tijden</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Had, zoo wy kunnen <rhyme label="c" type="f">merken</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Uit Lucas, hier van <rhyme label="d" type="m">daen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Voor weinig goede <rhyme label="c" type="f" corresp="#s7:l5">werken</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Zijn rijke schat <rhyme label="d" type="m" corresp="#s7:l6">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ach een gering <rhyme label="a" type="m">profijt</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">Wie zou d’het d’arme <rhyme label="b" type="f">menschen</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Voor een zoo korten <rhyme label="a" type="m" corresp="#s8:l1">tijd</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Wangunnen, of <rhyme label="b" type="f" corresp="#s8:l2">verwenschen</rhyme>?</l>
        <l id="s8:l5" met="3" type="-+">Nae dien zy zullen <rhyme label="c" type="f">derven</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Daer voor, de hoogste <rhyme label="d" type="m">vreugd</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">Die niemand en kan <rhyme label="c" type="f" corresp="#s8:l5">erven</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Als deur geloof en <rhyme label="d" type="m" corresp="#s8:l6">deugd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
