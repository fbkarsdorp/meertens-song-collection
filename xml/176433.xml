  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O wiens gemoed word niet <rhyme label="a" type="f">bewogen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">In deeze aangenaame <rhyme label="b" type="m">tyd</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Al onze droefheid is <rhyme label="a" type="f" corresp="#s1:l1">vervlogen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Door Buonaparte’s wys <rhyme label="b" type="m" corresp="#s1:l2">beleid</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Hy is naast God den Vredes <rhyme label="c" type="f">stigter</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Door zyne hulp is het <rhyme label="d" type="m">geschied</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Dank zy dien groote deugd <rhyme label="c" type="f" corresp="#s1:l5">verrigter</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Wie roemd zyn groote daaden <rhyme label="d" type="m" corresp="#s1:l6">niet</rhyme>.</l>
        <l id="s1:l9" met="4" type="-+">Wie roemd zyn groote daaden <rhyme label="d" type="m" corresp="#s1:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Lang was het spreekwoord ach was ’t <rhyme label="a" type="f">Vreede</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Maar ach geen mensch gaf ons <rhyme label="b" type="m">gehoor</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Wie heeft ‘er niet al om <rhyme label="a" type="f" corresp="#s2:l1">geleeden</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En Bonaparte drong ‘er <rhyme label="b" type="m" corresp="#s2:l2">door</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Hy is naast God den Vredes <rhyme label="c" type="f">stigter</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Door zyn hulp is het <rhyme label="d" type="m">geschied</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Dank zy dien groote daad <rhyme label="c" type="f" corresp="#s2:l5">verrigter</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Wie roemd zyn groote daaden <rhyme label="d" type="m" corresp="#s2:l6">niet</rhyme>.</l>
        <l id="s2:l9" met="4" type="-+">Wie roemd zyn groote daaden <rhyme label="d" type="m" corresp="#s2:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Doch het is nu van harte te <rhyme label="a" type="f">wenschen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat de Vrêe mag blyven in <rhyme label="b" type="m">stand</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ach Bonaparte mensch der <rhyme label="a" type="f" corresp="#s3:l1">menschen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Gy zyt ’t behoud al van ons <rhyme label="b" type="m" corresp="#s3:l2">land</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Gy zyt naast God den Vredes <rhyme label="c" type="f">stigter</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Door zyn hulp is ’t <rhyme label="d" type="m">geschied</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Dank zy dien groote deugd <rhyme label="c" type="f" corresp="#s3:l5">verrigter</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Wie roemd zyn groote daaden <rhyme label="d" type="m" corresp="#s3:l6">niet</rhyme>.</l>
        <l id="s3:l9" met="4" type="-+">Wie roemd zyn groote daaden <rhyme label="d" type="m" corresp="#s3:l6">niet</rhyme>.</l>
      </lg>
    </lg>
