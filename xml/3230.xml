    <melody>Geen mens en weet wat hem genaakt</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEn mensch vervreemt van recht en <rhyme label="a" type="m">maet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die uyt 'et spoor van <rhyme label="b" type="f">reden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Vervalt tot alderhande <rhyme label="a" type="m" corresp="#s1:l1">quaedt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En wupse <rhyme label="b" type="f" corresp="#s1:l2">beestigheden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Geraeckt en kleeft aen <rhyme label="c" type="m">Dronckenschap</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Het snoodtste stuck der <rhyme label="d" type="f">stucken</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">'t Gun door den dranck en lichten <rhyme label="c" type="m" corresp="#s1:l5">klap</rhyme></l>
        <l id="s1:l8" met="3" type="-+">De sinnen kan <rhyme label="d" type="f" corresp="#s1:l6">verrucken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De dronckenschap verstomt de <rhyme label="a" type="m">geest</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En helptse als aen 't <rhyme label="b" type="f">hollen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En maeckt 'et menschen breyn <rhyme label="a" type="m" corresp="#s2:l1">verbeest</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En schroeveloos op <rhyme label="b" type="f" corresp="#s2:l2">rollen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Soo dat gy spreeckt en rammelt <rhyme label="c" type="m">uyt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Al wat hy voort kan <rhyme label="d" type="f">bringhen</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Met lispe-tael, en hees <rhyme label="c" type="m" corresp="#s2:l5">gheluyt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Sijn alderheymste <rhyme label="d" type="f" corresp="#s2:l6">dinghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Terwijl hy by de Borsten <rhyme label="a" type="m">sit</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met onghereghelt <rhyme label="b" type="f">praten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Begeeft hem vaeck, deur dranck <rhyme label="a" type="m" corresp="#s3:l1">verhit</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Te treden over <rhyme label="b" type="f" corresp="#s3:l2">straten</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Daer suysebolt, daer swiert hy <rhyme label="c" type="m">heen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Tot spot van die 't <rhyme label="d" type="f">bekijcken</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Met stuyr gesicht en losse <rhyme label="c" type="m" corresp="#s3:l5">le'en</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En nimmer vry van <rhyme label="d" type="f" corresp="#s3:l6">swijcken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wanneer den slaep hem nochter <rhyme label="a" type="m">maeckt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Soo is hy quicx, <rhyme label="b" type="f">onlustigh</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Tot dat hy we'er aen 't kroegen <rhyme label="a" type="m" corresp="#s4:l1">raeckt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dan is 't we'er even <rhyme label="b" type="f" corresp="#s4:l2">rustigh</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Het lijf vergaert vol leelijck <rhyme label="c" type="m">bloedt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En op 'et tip van 't <rhyme label="d" type="f">sterven</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Heeft hy een droef beangst <rhyme label="c" type="m" corresp="#s4:l5">ghemoedt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En vreest 'et <rhyme label="d" type="f" corresp="#s4:l6">Hemel-derven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een nucht're Ziel bedenckt 'er <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En schickt 'er werck en <rhyme label="b" type="f">handel</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Een droncke Fun kan niet <rhyme label="a" type="m" corresp="#s5:l1">bevroe'n</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Sijn overgheven <rhyme label="b" type="f" corresp="#s5:l2">wandel</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Een matigh mensch is gaef en <rhyme label="c" type="m">fris</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Van lijf, van bloedt, en <rhyme label="d" type="f">leden</rhyme>:</l>
        <l id="s5:l7" met="4" type="-+">Een Dronckaerts gantsche wesen <rhyme label="c" type="m" corresp="#s5:l5">is</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Mismaeckt, vol <rhyme label="d" type="f" corresp="#s5:l6">leelijckheden</rhyme>.</l>
      </lg>
    </lg>
  </text>
