    <melody>Als ik mijn Phyllis kussen mag</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">APol had naauwelyks zyn <rhyme label="a" type="m">broek</rhyme></l>
        <l id="s1:l2" met="4" type="-+">En onderkonsten <rhyme label="b" type="f">aangetogen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Als Knaap DamÃªtas uyt den <rhyme label="a" type="m" corresp="#s1:l1">hoek</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van zyne Slaapplaats was <rhyme label="b" type="f" corresp="#s1:l2">gevlogen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En sat al by zyn <rhyme label="a" type="m">Rosemond</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Daar hy eens helder op ging <rhyme label="b" type="f">dennen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En deed het Liedje dat <rhyme label="a" type="m" corresp="#s2:l1">terstond</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Sal volgen,in haar ooren <rhyme label="b" type="f" corresp="#s2:l2">dreunen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ach waarde Rosemond hoe <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ik u myn dankbaarheyd <rhyme label="b" type="f">betoonen</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">Ik zoek maar vind gantsch niet met <rhyme label="a" type="m" corresp="#s3:l1">al</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Daar ik u gunst mee kan <rhyme label="b" type="f" corresp="#s3:l2">beloonen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dog zoo een dankbaar hert <rhyme label="a" type="m">voortaan</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">By u myn Lief niet werd <rhyme label="b" type="f">verstooten</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Zo neem ket in betaling <rhyme label="a" type="m" corresp="#s4:l1">aan</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Voor al het goed by u <rhyme label="b" type="f" corresp="#s4:l2">genoten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Neem dan myn hert, myn waarste <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Voor uwe gunst, die my meer waard <rhyme label="b" type="f">is</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Als al de schat die Croesus <rhyme label="a" type="m" corresp="#s5:l1">had</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ja 't allerkost'lykst dat op aard <rhyme label="b" type="f" corresp="#s5:l2">is</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Laat and're vry haar Wellust <rhyme label="a" type="m">in</rhyme></l>
        <l id="s6:l2" met="4" type="-+">God Bagchns stellen en zyn <rhyme label="b" type="f">Vrugten</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">De myne zoek ik in de <rhyme label="a" type="m" corresp="#s6:l1">min</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die geeft my beter <rhyme label="b" type="f" corresp="#s6:l2">ziel-genugten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Gy zy alleen myn <rhyme label="a" type="m">Ziels-vermaak</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">De vreugd en wellust van myn <rhyme label="b" type="f">oogen</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Gy zyt alleen myn Doel en <rhyme label="a" type="m" corresp="#s7:l1">Baak</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Ik leef alleen in uw <rhyme label="b" type="f" corresp="#s7:l2">vermogen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">'k Misgun aan and're niet, dat <rhyme label="a" type="m">zy</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Hun heerszugt streelen met <rhyme label="b" type="f">regeeren</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">'k Wil voor al 's Werelds <rhyme label="a" type="m" corresp="#s8:l1">Monarchy</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Uw wedermin, nog gunst <rhyme label="b" type="f" corresp="#s8:l2">ontberen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ik vind in deez' myn <rhyme label="a" type="m">slaverny</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Ligt duyzendmaal meer <rhyme label="b" type="f">zoetigheden</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Als and're in hun <rhyme label="a" type="m" corresp="#s9:l1">Heerschappy</rhyme>;</l>
        <l id="s9:l4" met="4" type="-+">Ik ben met Rosemond te <rhyme label="b" type="f" corresp="#s9:l2">vreden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
