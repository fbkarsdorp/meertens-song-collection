    <melody>Rozemond waar gij vliedt</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">OCh! wat scheeld al Christus <rhyme label="a" type="m">pad</rhyme></l>
        <l id="s1:l2" met="4" type="+-">By uw wegt, o ydel <rhyme label="a" type="m" corresp="#s1:l1">vat</rhyme>!</l>
        <l id="s1:l3" met="3" type="+-">Al uw’ zin, u <rhyme label="b" type="m">wit</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Tracht na rijk <rhyme label="b" type="m" corresp="#s1:l3">bezit</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Poogt na geld en <rhyme label="c" type="m">goed</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Na vleys en <rhyme label="c" type="m" corresp="#s1:l5">bloed</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Zoo dat u noch <rhyme label="d" type="m">staet</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Noch wellust <rhyme label="d" type="m" corresp="#s1:l7">verzaed</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Daer voor de <rhyme label="e" type="m">caritaet</rhyme></l>
        <l id="s1:l10" met="3" type="+-">Christi t’uwer <rhyme label="e" type="m" corresp="#s1:l9">baet</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Van om hoog neer dalen <rhyme label="f" type="m">kwam</rhyme></l>
        <l id="s1:l12" met="4" type="-+">Onnozel als een <rhyme label="f" type="m" corresp="#s1:l11">of-fer-lam</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maer wild ghy nu eens <rhyme label="a" type="m">verstaen</rhyme>:</l>
        <l id="s2:l2" met="4" type="+-">Waer dit scheel ons quam van <rhyme label="a" type="m" corresp="#s2:l1">daen</rhyme>?</l>
        <l id="s2:l3" met="3" type="+-">’t Is dat wy, <rhyme label="b" type="m">helaes</rhyme>!</l>
        <l id="s2:l4" met="3" type="+-">Lichter als een <rhyme label="b" type="m" corresp="#s2:l3">aes</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Iae als weynig <rhyme label="c" type="m">stofs</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Nae luttel <rhyme label="c" type="m" corresp="#s2:l5">lofs</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Vliegen inde <rhyme label="d" type="m">lucht</rhyme>:</l>
        <l id="s2:l8" met="3" type="+-">Iel van alle <rhyme label="d" type="m" corresp="#s2:l7">tucht</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">Daer voor dat Godes <rhyme label="e" type="m">zoon</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Van zijn hogen <rhyme label="e" type="m" corresp="#s2:l9">Throon</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Neergedaelt in ’t diepste <rhyme label="f" type="m">dal</rhyme>;</l>
        <l id="s2:l12" met="4" type="-+">Opbeuren kwam des menschen <rhyme label="f" type="m" corresp="#s2:l11">val</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">’t Is dan te verwond’ren <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Datmen zich verheffen <rhyme label="a" type="m" corresp="#s3:l1">ziet</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Al wat zonder <rhyme label="b" type="m">wigt</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Idel is, en <rhyme label="b" type="m" corresp="#s3:l3">licht</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Des zoo zietmen <rhyme label="c" type="m">ook</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Den grauwen <rhyme label="c" type="m" corresp="#s3:l5">rook</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">’t Witte water <rhyme label="d" type="m">schuym</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Duyst en zwane <rhyme label="d" type="m" corresp="#s3:l7">pluym</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">En zonderling de <rhyme label="e" type="m">asch</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Zich opbeuren <rhyme label="e" type="m" corresp="#s3:l9">ras</rhyme>.</l>
        <l id="s3:l11" met="4" type="+-">Daer ’t gewigt des Heren <rhyme label="f" type="m">liet</rhyme></l>
        <l id="s3:l12" met="4" type="-+">Haer neder zinken schier tot <rhyme label="f" type="m" corresp="#s3:l11">niet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
