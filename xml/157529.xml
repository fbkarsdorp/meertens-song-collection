  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt Gordel <rhyme label="a" type="f">Jeremije</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Toont ons een <rhyme label="a" type="f" corresp="#s1:l1">Schilderye</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van een geloovigh <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hoe't bloeyt door Godts <rhyme label="c" type="f">genaden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En oock verwelckt als <rhyme label="c" type="f" corresp="#s1:l4">bladen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wanneer 't verlaten <rhyme label="b" type="m" corresp="#s1:l3">werdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dit Gordel des <rhyme label="a" type="f">Propheten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En is gants niet <rhyme label="a" type="f" corresp="#s2:l1">versleten</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Soo langh hy 't aen hem <rhyme label="b" type="m">droegh</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Maer doe hy 't heeft <rhyme label="c" type="f">versteecken</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En is'er van <rhyme label="c" type="f" corresp="#s2:l4">geweecken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">De Schimmel het <rhyme label="b" type="m" corresp="#s2:l3">besloegh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Soo langh als Godt de <rhyme label="a" type="f">stroomen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van sijne gunst doet <rhyme label="a" type="f" corresp="#s3:l1">komen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Op een verkooren <rhyme label="b" type="m">ziel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Soo bloeyt zy als een <rhyme label="c" type="f">Ceder</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Daer af noyt bladt ter <rhyme label="c" type="f" corresp="#s3:l4">neder</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van hare toppen <rhyme label="b" type="m" corresp="#s3:l3">viel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer alsoo menigh <rhyme label="a" type="f">malen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Godt 't aenschijn doet wegh <rhyme label="a" type="f" corresp="#s4:l1">halen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Beswijckt haer flau <rhyme label="b" type="m">gemoet</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Tot Godt weer keert tot <rhyme label="c" type="f">harend'</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En haer gelijck een <rhyme label="c" type="f" corresp="#s4:l4">Arend</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Op nieuw verjeughden <rhyme label="b" type="m" corresp="#s4:l3">doet</rhyme>.</l>
      </lg>
    </lg>
  </text>
