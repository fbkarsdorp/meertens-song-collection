<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>5242</id>
    <date>
      <year-start>1924</year-start>
      <year-end>1925</year-end>
    </date>
    <tags>
      <tag translation="Geuzen song">geuzenlied</tag>
    </tags>
    <melody>Psalm 006 Datheen</melody>
    <categories>
      <category translation="politics and history">politiek en geschiedenis</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Schaemt u nu Brabant <rhyme label="a" type="f">seere</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Vlaenderen oock vol <rhyme label="a" type="f" corresp="#s1:l1">oneere</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Vol Afgoderye <rhyme label="b" type="m">blent</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Jeswijten, <rhyme label="c" type="f">Cappecijnen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Vol doenders, leelijcke <rhyme label="c" type="f" corresp="#s1:l4">swijnen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Vol woont u <rhyme label="b" type="m" corresp="#s1:l3">Logement</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Noch hebdy menich <rhyme label="a" type="f">beeste</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ghenoech in u <rhyme label="a" type="f" corresp="#s2:l1">foreeste</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Met menich leelijck <rhyme label="b" type="m">dier</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Bijtschoppen, Proosten, <rhyme label="c" type="f">Papen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die daer so gheerne <rhyme label="c" type="f" corresp="#s2:l4">slapen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">By Vroukens met <rhyme label="b" type="m" corresp="#s2:l3">plasier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Apten met dicke <rhyme label="a" type="f">balghen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die van de spijse <rhyme label="a" type="f" corresp="#s3:l1">walghen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Paters vol <rhyme label="b" type="m">overdaet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die met Nonnen <rhyme label="c" type="f">boeleeren</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Haer kinders <rhyme label="c" type="f" corresp="#s3:l4">massacreren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Twelck is noch d'meeste <rhyme label="b" type="m" corresp="#s3:l3">quaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Kanonicken en <rhyme label="a" type="f">Satrosen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Doet ghy de kaken <rhyme label="a" type="f" corresp="#s4:l1">bloosen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Menich vreemt Paep int <rhyme label="b" type="m">cot</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Voor al dees Bels <rhyme label="c" type="f">dienaren</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Moet ghy slaven en <rhyme label="c" type="f" corresp="#s4:l4">sparen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En eertse noch als <rhyme label="b" type="m" corresp="#s4:l3">Godt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Noch hebdy die vier <rhyme label="a" type="f">Oorden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ghegort met kempen <rhyme label="a" type="f" corresp="#s5:l1">Coorden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die ruymen u <rhyme label="b" type="m">schappra</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Met malcander sy <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat grouwelijck is om <rhyme label="c" type="f" corresp="#s5:l4">beven</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Als die van <rhyme label="b" type="m" corresp="#s5:l3">Sodoma</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Canonicken gaen ter <rhyme label="a" type="f">Kercken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Vet als ghemeste <rhyme label="a" type="f" corresp="#s6:l1">vercken</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Al warent jonckers <rhyme label="b" type="m">eel</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Met Hoeren sy huys <rhyme label="c" type="f">houwen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Niet met ghetroude <rhyme label="c" type="f" corresp="#s6:l4">vrouwen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Maken bastaerden <rhyme label="b" type="m" corresp="#s6:l3">veel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Men siet met grooter <rhyme label="a" type="f">hoopen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die Papen hoeren <rhyme label="a" type="f" corresp="#s7:l1">loopen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">By de Bonet <rhyme label="b" type="m">viercant</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Voor biecht, begraven, <rhyme label="c" type="f">trouwen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Moet ghy die luy <rhyme label="c" type="f" corresp="#s7:l4">rabbouwen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Ghelt gheven inde <rhyme label="b" type="m" corresp="#s7:l3">handt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">U gheveynsde <rhyme label="a" type="f">voldoenders</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die gaen als magher <rhyme label="a" type="f" corresp="#s8:l1">hoenders</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Vol van <rhyme label="b" type="m">ypocrisy</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Al dat boose <rhyme label="c" type="f">ghebroetsel</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Gheefdy al tsamen <rhyme label="c" type="f" corresp="#s8:l4">voedtsel</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Zijnde vol <rhyme label="b" type="m" corresp="#s8:l3">Tyranny</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dees gheesteloose <rhyme label="a" type="f">dieven</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hebben naer hun <rhyme label="a" type="f" corresp="#s9:l1">believen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Haren aert daer <rhyme label="b" type="m">volbracht</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Aen een van Christus <rhyme label="c" type="f">leden</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Tot Brussel inder <rhyme label="c" type="f" corresp="#s9:l4">steden</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Die sy hebben <rhyme label="b" type="m" corresp="#s9:l3">versmacht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Veel Nonnen Cloosters <rhyme label="a" type="f">rijcke</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Hebt ghy in uwe <rhyme label="a" type="f" corresp="#s10:l1">wijcke</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Besloten seer <rhyme label="b" type="m">expres</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Maer alleen hare <rhyme label="c" type="f">Biechtvaders</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Die zijn haer lust <rhyme label="c" type="f" corresp="#s10:l4">versaders</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Die hebben vry <rhyme label="b" type="m" corresp="#s10:l3">acces</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ghy hebt seer <rhyme label="a" type="f">veelderhande</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Daer noch in u <rhyme label="a" type="f" corresp="#s11:l1">Warande</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Van dat gheboeft seer <rhyme label="b" type="m">wreet</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Alwaert datmense <rhyme label="c" type="f">sochte</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Men vont niet sulck <rhyme label="c" type="f" corresp="#s11:l4">ghedrochte</rhyme></l>
        <l id="s11:l6" met="3" type="-+">In Plutoos Camer <rhyme label="b" type="m" corresp="#s11:l3">breet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Het is onlancx <rhyme label="a" type="f">gheleden</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Tot Lions inde <rhyme label="a" type="f" corresp="#s12:l1">stede</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">In Vranckrijck men <rhyme label="b" type="m">hoort</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">In S. minnebroeders <rhyme label="c" type="f">Kercke</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Diep onder eenen sercke, <rhyme label="c" type="f" corresp="#s12:l4">In</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Dochters daer zijn <rhyme label="b" type="m" corresp="#s12:l3">versmoort</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Oorlof Brabant en <rhyme label="a" type="f">Vlaendre</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">God is ons een <rhyme label="a" type="f" corresp="#s13:l1">vermaendre</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Naer sijn heylich woort <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Dit is van hem <rhyme label="c" type="f">verboden</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Te eeren die <rhyme label="c" type="f" corresp="#s13:l4">Afgoden</rhyme></l>
        <l id="s13:l6" met="3" type="-+">En storten t'Christen <rhyme label="b" type="m" corresp="#s13:l3">bloet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
