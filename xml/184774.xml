    <tags/>
    <melody>Wat is het schoon het mensdom te verplichten</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Niets is zo fraai om zich te doen <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dan een gedrag dat roem <rhyme label="b" type="m">bedoelt</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Dat doet de Jeugd elks gunsten <rhyme label="a" type="f" corresp="#s1:l1">winnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daar zy niet woest, niet toomloos <rhyme label="b" type="m" corresp="#s1:l2">woelt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Leer, Jonglingschap! dan, tot uw <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Leer vroeg 't behandlen van 't <rhyme label="c" type="m" corresp="#s1:l5">Geweer</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Vestigt uw oog op 't voorbeeld uwer <rhyme label="a" type="f">Vaadren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wydt uwen pligt aan 't <rhyme label="b" type="m">Vaderland</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Opdat, wanneer het rampen <rhyme label="a" type="f" corresp="#s2:l1">naadren</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Gy meÃª de Wapens neemt ter <rhyme label="b" type="m" corresp="#s2:l2">hand</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Leer, Jonglingschap! dan, tot uw <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Leer vroeg't behandlen van 't <rhyme label="c" type="m" corresp="#s2:l5">Geweer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Dus wordt gy nutte en braave <rhyme label="a" type="f">Medeleden</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Van 's Volks verbonden <rhyme label="b" type="m">Maatschappy</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Dus doet gy hulde aan goede <rhyme label="a" type="f" corresp="#s3:l1">zeden</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">Dus zet ge uw gaven luister <rhyme label="b" type="m" corresp="#s3:l2">by</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Leer, Jonglingschap! dan, tot uw <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Leer vroeg 't behandlen van 't <rhyme label="c" type="m" corresp="#s3:l5">Geweer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Welk eenen glans en luister, wakkre <rhyme label="a" type="f">Knaapen</rhyme>!</l>
        <l id="s4:l2" met="4" type="-+">Geeft het u niet als ge u <rhyme label="b" type="m">vertoont</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Met welgepast Geweer en <rhyme label="a" type="f" corresp="#s4:l1">Wapen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Zo word uw moed met Lof <rhyme label="b" type="m" corresp="#s4:l2">gekroond</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Leer, Jonglingschap! dan, tot uw <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Leer vroeg 't behandlen van 't <rhyme label="c" type="m" corresp="#s4:l5">Geweer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Ver van uw zucht tot nutte <rhyme label="a" type="f">kundigheden</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Te dooven, wordt zy <rhyme label="b" type="m">opgewekt</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Door 't welgebruiken uwer <rhyme label="a" type="f" corresp="#s5:l1">Leden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Waartoe de Wapenoefning <rhyme label="b" type="m" corresp="#s5:l2">strekt</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Leer, Jonglingschap! dan, tot uw <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Leer vroeg 't behandlen van 't <rhyme label="c" type="m" corresp="#s5:l5">Geweer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Zoudt gy wel een uitspanning kunnen <rhyme label="a" type="f">vinden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Beter dan deeze, in een ledig <rhyme label="b" type="m">uur</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die tot uw pligt u kan <rhyme label="a" type="f" corresp="#s6:l1">verbinden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En u vermaak geeft op den <rhyme label="b" type="m" corresp="#s6:l2">duur</rhyme>?</l>
        <l id="s6:l5" met="4" type="-+">Leer, Jonglingschap! dan tot uw <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Leer vroeg 't behandlen van 't <rhyme label="c" type="m" corresp="#s6:l5">Geweer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Zo moogt gy't heil des Vaderlands <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Zo vest ge op Vryheids eedle <rhyme label="b" type="m">Wet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Uw hart, uw moed, verstand en <rhyme label="a" type="f" corresp="#s7:l1">zinnen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In weetlust noch beroep <rhyme label="b" type="m" corresp="#s7:l2">belet</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Leer, Jonglingschap! dan, tot uw <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Leer vroeg 't behandlen van 't <rhyme label="c" type="m" corresp="#s7:l5">Geweer</rhyme>.</l>
      </lg>
    </lg>
  </text>
