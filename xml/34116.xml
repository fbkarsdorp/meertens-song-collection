  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Nacht, ende <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">quel ick myne <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Als ick van het <rhyme label="b" type="f" corresp="#s1:l2">minnen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Doen myn droef <rhyme label="a" type="m" corresp="#s1:l1">beklagh</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Maer al myn <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En acht myn liefste <rhyme label="c" type="m" corresp="#s1:l5">niet</rhyme>,</l>
        <l id="s1:l7" met="2" type="+-">Al myn <rhyme label="d" type="f">suchten</rhyme>,</l>
        <l id="s1:l8" met="2" type="+-">Scheynen <rhyme label="d" type="f" corresp="#s1:l7">kluchten</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Gheen druck sy <rhyme label="c" type="m" corresp="#s1:l5">aen-siet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Het is <rhyme label="a" type="m">verkeert</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Anders als te <rhyme label="b" type="f">voren</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">'kHeb u gunst <rhyme label="b" type="f" corresp="#s2:l2">verloren</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Maer u sin <rhyme label="a" type="m" corresp="#s2:l1">gheleert</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Kan staet, oft <rhyme label="c" type="m">pracht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dan hebben sulcken <rhyme label="c" type="m" corresp="#s2:l5">kracht</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">Om u <rhyme label="d" type="f">sinnen</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">'t <rhyme label="d" type="f" corresp="#s2:l7">Over-winnen</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Dat ghy my <rhyme label="c" type="m" corresp="#s2:l5">veracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Waer-om dat <rhyme label="a" type="m">spyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Myne <rhyme label="b" type="f">over-schoone</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Dat ghy my wilt <rhyme label="b" type="f" corresp="#s3:l2">loonen</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Met soo slecht <rhyme label="a" type="m" corresp="#s3:l1">verwyt</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Is't alleen om <rhyme label="c" type="m">'tgoet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat ick u derven <rhyme label="c" type="m" corresp="#s3:l5">moet</rhyme>,</l>
        <l id="s3:l7" met="2" type="+-">Acht voor <rhyme label="d" type="f">'tminsten</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Myn <rhyme label="d" type="f" corresp="#s3:l7">verdinsten</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Myne liefste <rhyme label="c" type="m" corresp="#s3:l5">soet</rhyme>.</l>
      </lg>
    </lg>
  </text>
