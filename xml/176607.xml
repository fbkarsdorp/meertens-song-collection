  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Den Echten-staet vol eeren <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die is heyligh <rhyme label="b" type="m">voorwaer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Daer na streckt oock 't begeeren <rhyme label="a" type="m" corresp="#s1:l1">soet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van dit vereenight <rhyme label="b" type="m" corresp="#s1:l2">paer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">De welck door <rhyme label="c" type="f">liefde-banden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Getreden zyn in d <rhyme label="d" type="m">Echt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Soo datje nu handt aen <rhyme label="c" type="f" corresp="#s1:l5">handen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Beloven de Trouw' <rhyme label="d" type="m" corresp="#s1:l6">oprecht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Bruydegom doch uw' luyster <rhyme label="a" type="m">geeft</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Aen godes heyligh <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Op dat gy niet in 't duyster <rhyme label="a" type="m" corresp="#s2:l1">leeft</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gaat treden vlijtig <rhyme label="b" type="m" corresp="#s2:l2">voort</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En baedt'er de weg des <rhyme label="c" type="f">vreden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">dat is een suyver <rhyme label="d" type="m">padt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">So komt gy in de <rhyme label="c" type="f" corresp="#s2:l5">Steden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Of eeuwigh <rhyme label="d" type="m" corresp="#s2:l6">Levens-stadt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vrou Bruyt wilt ook nasporen <rhyme label="a" type="m">snel</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">U Bruydegom en <rhyme label="b" type="m">heer</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Want hy moet na hem hooren <rhyme label="a" type="m" corresp="#s3:l1">wel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Volgens d'heylige <rhyme label="b" type="m" corresp="#s3:l2">Leer</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">So sal u Vrouw Bruyt <rhyme label="c" type="f">genaken</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Weer-liefde t'allen <rhyme label="d" type="m">stont</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En gy sult beyd' dan <rhyme label="c" type="f" corresp="#s3:l5">raken</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Op een vaste <rhyme label="d" type="m" corresp="#s3:l6">gront</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ik wens u godes zeden <rhyme label="a" type="m">wis</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Te krigen op der <rhyme label="b" type="m">aardt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Want wie tot deugt genegen <rhyme label="a" type="m" corresp="#s4:l1">is</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Den heer altijt <rhyme label="b" type="m" corresp="#s4:l2">bewaart</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En wil genadelyk <rhyme label="c" type="f">geven</rhyme></l>
        <l id="s4:l6" met="3" type="-+">U Heyl, troost en <rhyme label="d" type="m">voorspoet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dat gy vreedsamig meugt <rhyme label="c" type="f" corresp="#s4:l5">leven</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Vereenigt in u <rhyme label="d" type="m" corresp="#s4:l6">gemoet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Men so u jonge Spruytjes <rhyme label="a" type="m">groen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dan groeyend' in u <rhyme label="b" type="m">hof</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">die sullen 't quaet weg sluyten <rhyme label="a" type="m" corresp="#s5:l1">doen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En sporen na uwe <rhyme label="b" type="m" corresp="#s5:l2">lof</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Die u den heer wil <rhyme label="c" type="f">stieren</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En segenen in 't <rhyme label="d" type="m">gemeen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Op datse meed' mogen <rhyme label="c" type="f" corresp="#s5:l5">zwieren</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Om uwen Tafel <rhyme label="d" type="m" corresp="#s5:l6">heen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Heer geeft dog dees getroude <rhyme label="a" type="m">twee</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En maakt haar regt <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Op datje vast'lijk bouwen <rhyme label="a" type="m" corresp="#s6:l1">mee</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Op 't regte <rhyme label="b" type="m" corresp="#s6:l2">Fondament</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">En laedt haar vlugge <rhyme label="c" type="f">Jaren</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dog in gesontheyt <rhyme label="d" type="m">vry</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Met vreugden henen <rhyme label="c" type="f" corresp="#s6:l5">varen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Tot dat haar komt halen <rhyme label="d" type="m" corresp="#s6:l6">gy</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wilt opper-Prins genadig <rhyme label="a" type="m">dog</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Gere'sen op dees <rhyme label="b" type="m">trap</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Haar zegenen weldadig <rhyme label="a" type="m" corresp="#s7:l1">nog</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Met neering <rhyme label="b" type="m" corresp="#s7:l2">Koopmanschap</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">En dat sy ook regt <rhyme label="c" type="f">beminnen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">De deugt door yders <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En datse dan komen <rhyme label="c" type="f" corresp="#s7:l5">binnen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Daar't alles in vreugde <rhyme label="d" type="m" corresp="#s7:l6">rust</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
