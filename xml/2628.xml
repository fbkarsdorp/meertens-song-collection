  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Salige zieltjes die soo <rhyme label="a" type="m">verblijd</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Voor de Goden werd <rhyme label="b" type="f">gedrongen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Alwaar Gods lof <rhyme label="a" type="m" corresp="#s1:l1">gebenedijd</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Vande Sangertjes werd <rhyme label="b" type="f" corresp="#s1:l2">gesongen</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Daar ghy 't Godd'lijck aanschijn <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En zijn gheselschap steeds <rhyme label="c" type="m" corresp="#s1:l5">geniet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En alles goeds <rhyme label="c" type="m" corresp="#s1:l5">geschiet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Heylige Geesjes der goede <rhyme label="a" type="m">Goon</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Komt mijn zieltje oock so <rhyme label="b" type="f">trecken</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Maackt de deughd mijn so <rhyme label="a" type="m" corresp="#s2:l1">gewoon</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Want mijn sinnetjes daar na <rhyme label="b" type="f" corresp="#s2:l2">strecken</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Komt af, komt af, ay lieve <rhyme label="c" type="m">daalt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Eer mijn herte sich <rhyme label="c" type="m" corresp="#s2:l5">versmaalt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En na wat anders <rhyme label="c" type="m" corresp="#s2:l5">taalt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Goedige Goden wat is de <rhyme label="a" type="m">mensch</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Haast verkeerlijck en <rhyme label="b" type="f">lichtvaardigh</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Ghelijck een lichte wind of <rhyme label="a" type="m" corresp="#s3:l1">wensch</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Is hy nietigh en <rhyme label="b" type="f" corresp="#s3:l2">quaat-aardigh</rhyme>;</l>
        <l id="s3:l5" met="4" type="-+">Want het groote goede <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dat ghy hem ghestadigh <rhyme label="c" type="m" corresp="#s3:l5">doet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat stoot hy met de <rhyme label="c" type="m" corresp="#s3:l5">voet</rhyme>.</l>
      </lg>
    </lg>
  </text>
