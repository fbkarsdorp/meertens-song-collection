  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk gaa u nu <rhyme label="a" type="f">begeven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mijn goe bekende <rhyme label="b" type="m">Vriendt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En wil gerustich <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">U schrijven waer ick <rhyme label="b" type="m" corresp="#s1:l2">mient</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Te gaen, en u <rhyme label="c" type="f">verlaten</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Want ick nu van u <rhyme label="d" type="m">scheyd'</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Daerom wilt my niet <rhyme label="c" type="f" corresp="#s1:l5">haten</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Maer liever doen <rhyme label="d" type="m" corresp="#s1:l6">geleyd'</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'k Gaa nae geen vreemde <rhyme label="a" type="f">kusten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Noch verre uyt <rhyme label="b" type="m">Lant</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer 'k meen my te <rhyme label="a" type="f" corresp="#s2:l1">verlusten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Daer men my eertijdts <rhyme label="b" type="m" corresp="#s2:l2">vant</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Want ick heb nu <rhyme label="c" type="f">verkooren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Een wel-bekende <rhyme label="d" type="m">plaets</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat is de Stadt van <rhyme label="c" type="f" corresp="#s2:l5">Hooren</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">By onbekende <rhyme label="d" type="m" corresp="#s2:l6">maets</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick scheyd' nu van het <rhyme label="a" type="f">Ye</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En kies de <rhyme label="b" type="m">Zuyder-Zee</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Daer ick, nae mijn <rhyme label="a" type="f" corresp="#s3:l1">verblije</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Vindt een geruste <rhyme label="b" type="m" corresp="#s3:l2">ReÃª</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Want ick nu <rhyme label="c" type="f">weder-keere</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Nae mijn <rhyme label="d" type="m">Geboorte-Stadt</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">'k Beveel u Godt den <rhyme label="c" type="f" corresp="#s3:l5">Heere</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En wandelt op sijn <rhyme label="d" type="m" corresp="#s3:l6">padt</rhyme>.</l>
      </lg>
    </lg>
