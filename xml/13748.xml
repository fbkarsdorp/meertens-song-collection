  <author>anoniem</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KOm gaenwe soete <rhyme label="a" type="m">Harderin</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Alwaer ons Philis <rhyme label="b" type="m">wacht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En d’Herders die-der steedts in <rhyme label="a" type="m" corresp="#s1:l1">Min</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Besteden dagh en <rhyme label="b" type="m" corresp="#s1:l2">nacht</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Op dat ick my aldaer <rhyme label="c" type="m">vertoon</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met dese <rhyme label="d" type="m">Roose-Krans</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Voor Min genoten tot mijn <rhyme label="c" type="m" corresp="#s1:l5">loon</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ay gaen-we aen den <rhyme label="d" type="m" corresp="#s1:l6">Dans</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe sal ick overschoone <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Vergelden dese <rhyme label="b" type="m">deugt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">‘k Sweer ghy-me meer en meer <rhyme label="a" type="m" corresp="#s2:l1">behaeght</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Mijn hert sprinckt op van <rhyme label="b" type="m" corresp="#s2:l2">vreught</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Terwijlen dat ick nu <rhyme label="c" type="m">geniet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Het geen ick heb <rhyme label="d" type="m">begeert</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Nu acht ick geen geleen <rhyme label="c" type="m" corresp="#s2:l5">verdriet</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Hoe seer ‘t my heeft <rhyme label="d" type="m" corresp="#s2:l6">verteert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">My dunckt ick hoor van verr’ <rhyme label="a" type="m">Abre</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Verbreyden uwen <rhyme label="b" type="m">naem</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wt Sparens Velden tot in <rhyme label="a" type="m" corresp="#s3:l1">Stee</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Door de bevruchte <rhyme label="b" type="m" corresp="#s3:l2">Faem</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">En siet de gantsche Herders <rhyme label="c" type="m">schaer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Verwondert staen als <rhyme label="d" type="m">stom</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Door dese onverwachte <rhyme label="c" type="m" corresp="#s3:l5">Maer</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Daer op dat ick nu <rhyme label="d" type="m" corresp="#s3:l6">roem</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En hoe Philander aen <rhyme label="a" type="m">Lerind</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vernieuwet sijne <rhyme label="b" type="m">klacht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Met Coridon die Daphne <rhyme label="a" type="m" corresp="#s4:l1">Mint</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Waerom sy hem <rhyme label="b" type="m" corresp="#s4:l2">veracht</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Daer sult ghy als een Baecke <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En worden seer <rhyme label="d" type="m">geroemt</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Om datje hebt verlicht mijn <rhyme label="c" type="m" corresp="#s4:l5">pijn</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">V jeught die eeuwigh <rhyme label="d" type="m" corresp="#s4:l6">bloemt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
