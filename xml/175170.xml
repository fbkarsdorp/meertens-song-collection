<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>175170</id>
    <date>
      <year-start>1861</year-start>
      <year-end>1861</year-end>
    </date>
    <tags>
      <tag standard-name="kinderlied" translation="children's song">kinderlied</tag>
    </tags>
    <melody/>
    <categories>
      <category translation="children">kinderen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Wilt ge koeling voor den <rhyme label="a" type="m">gloed</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van de felle <rhyme label="b" type="m">Zomerzon</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">In het vocht van de <rhyme label="b" type="m" corresp="#s1:l2">bron</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">In den stroom, in den <rhyme label="a" type="m" corresp="#s1:l1">vloed</rhyme>...</l>
        <l id="s1:l5" met="4" type="+-">Knapen! - in de frissche <rhyme label="c" type="f">wellen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Voelt ge uw kracht zich weêr <rhyme label="c" type="f" corresp="#s1:l5">herstellen</rhyme>,</l>
        <l id="s1:l7" met="2" type="+-">Als het <rhyme label="d" type="m">nat</rhyme></l>
        <l id="s1:l8" met="2" type="+-">U <rhyme label="d" type="m" corresp="#s1:l7">omspat</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Duik omlaag en spring <rhyme label="a" type="m">omhoog</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Klief den stroom met forsche <rhyme label="b" type="m">spier</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wend en keer, zwenk en <rhyme label="b" type="m" corresp="#s2:l2">zwier</rhyme>....</l>
        <l id="s2:l4" met="4" type="+-">Als een pijl van den <rhyme label="a" type="m" corresp="#s2:l1">boog</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Knapen! moogt ge voorwaarts <rhyme label="c" type="f">schieten</rhyme>;</l>
        <l id="s2:l6" met="4" type="+-">'t Zal u kracht in de aders <rhyme label="c" type="f" corresp="#s2:l5">gieten</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">Als het <rhyme label="d" type="m">nat</rhyme></l>
        <l id="s2:l8" met="2" type="+-">U <rhyme label="d" type="m" corresp="#s2:l7">omspat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Blijv' de bloodaard aan het <rhyme label="a" type="m">strand</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Blijv' de lafaard op den <rhyme label="b" type="m">dijk</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Waterland, <rhyme label="b" type="m" corresp="#s3:l2">Waterland</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Gij zijt ons <rhyme label="a" type="m" corresp="#s3:l1">Koninkrijk</rhyme>!</l>
        <l id="s3:l5" met="4" type="+-">Uit het diepste van de <rhyme label="c" type="f">stroomen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Is Oud-Neêrlands kracht <rhyme label="c" type="f" corresp="#s3:l5">gekomen</rhyme>;</l>
        <l id="s3:l7" met="2" type="+-">Haal dien <rhyme label="d" type="m">schat</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Weêr uit 't <rhyme label="d" type="m" corresp="#s3:l7">nat</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
