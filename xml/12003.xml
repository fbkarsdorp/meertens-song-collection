  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MOet ghy dienen Heer of <rhyme label="a" type="m">vrouw</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Dient <rhyme label="a" type="m" corresp="#s1:l1">getrouw</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Doet niet dat u oyt <rhyme label="a" type="m" corresp="#s1:l1">berouw</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Doet u plicht als voor Gods <rhyme label="b" type="f">ooghen</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Godt sal u, dan of <rhyme label="c" type="m">nu</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Seer hoogh <rhyme label="b" type="f" corresp="#s1:l4">verhooghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wacht u, dat gh' haer <rhyme label="a" type="m">heym'lijckheyt</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Niet <rhyme label="a" type="m" corresp="#s2:l1">verspreyt</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Brenght haer in gheen <rhyme label="a" type="m" corresp="#s2:l1">swarigheydt</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Noyt sal u het swijghen <rhyme label="b" type="f">schaden</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Maer men sal om 't <rhyme label="c" type="m">ghekal</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Een knecht <rhyme label="b" type="f" corresp="#s2:l4">versmaden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Geeff quae tonghen gheen <rhyme label="a" type="m">ghehoor</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Die <rhyme label="a" type="m" corresp="#s3:l1">versmoor</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Staet u Meesters eere <rhyme label="a" type="m" corresp="#s3:l1">voor</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">'t Gheen ghy meucht wilt dat <rhyme label="b" type="f">verschoonen</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Doen sy quaet, wilt uyt <rhyme label="c" type="m">haet</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Dat elck niet <rhyme label="b" type="f" corresp="#s3:l4">toonen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wacht u van <rhyme label="a" type="m">ontrouwigheyt</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Haer niet <rhyme label="a" type="m" corresp="#s4:l1">vleyt</rhyme></l>
        <l id="s4:l3" met="4" type="+-">In haer <rhyme label="a" type="m" corresp="#s4:l1">teghenwoordigheyt</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Wilt haer niet in sonden <rhyme label="b" type="f">streelen</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Die quaet doet, en die 't <rhyme label="c" type="m">voedt</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Aen een straff <rhyme label="b" type="f" corresp="#s4:l4">deelen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Spoedt u werck met alle <rhyme label="a" type="m">vlijt</rhyme>.</l>
        <l id="s5:l2" met="2" type="+-">Spilt gheen <rhyme label="a" type="m" corresp="#s5:l1">tijt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Die soo schightigh henen <rhyme label="a" type="m" corresp="#s5:l1">glijt</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Soo sy u wat swaers <rhyme label="b" type="f">oplegghen</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Wilt niet veel met <rhyme label="c" type="m">krackeel</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Daer teghen <rhyme label="b" type="f" corresp="#s5:l4">segghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Soo haer in haer af zijn <rhyme label="a" type="m">yet</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Scha <rhyme label="a" type="m" corresp="#s6:l1">gheschiet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Wilt het weeren soo ghy 't <rhyme label="a" type="m" corresp="#s6:l1">siet</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Wilt voor 't haer als 't uwe <rhyme label="b" type="f">spreecken</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Sijt vervult met <rhyme label="c" type="m">ghedult</rhyme></l>
        <l id="s6:l6" met="2" type="-+">In haer <rhyme label="b" type="f" corresp="#s6:l4">ghebreecken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Als u Meester yet <rhyme label="a" type="m">verhaelt</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Of <rhyme label="a" type="m" corresp="#s7:l1">vertaelt</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Daer sijn wetenschap in <rhyme label="a" type="m" corresp="#s7:l1">dwaelt</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Wilt gheen leughens hem <rhyme label="b" type="f">aentijghen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Maer ghedenckt, noyt en <rhyme label="c" type="m">krenckt</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Het tijdigh <rhyme label="b" type="f" corresp="#s7:l4">swijghen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Weet ghy beter, seght u <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s8:l2" met="2" type="+-">Doch <rhyme label="a" type="m" corresp="#s8:l1">wanneer</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Tijdigh is of sijn <rhyme label="a" type="m" corresp="#s8:l1">begheer</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Wilt hem niet voor elck <rhyme label="b" type="f">beschamen</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Gheeft hem eer; maer vry <rhyme label="c" type="m">meer</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Gods Heyl'ghe <rhyme label="b" type="f" corresp="#s8:l4">Namen</rhyme>.</l>
      </lg>
    </lg>
  </text>
