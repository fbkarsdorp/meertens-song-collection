    <melody>Ik minde eens konings zoon</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IEsus ghinc van <rhyme label="a" type="f">Bethanien</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met sinen lieuen <rhyme label="b" type="m">iongeren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Te Ierusalem inden <rhyme label="c" type="f">tempel</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Om den volcke te <rhyme label="b" type="m" corresp="#s1:l2">prediken</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat vant hi in sinen <rhyme label="a" type="f">weghe</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In sinen weghe <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Eenen schonen groenen <rhyme label="c" type="f">vigheboom</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Met bladeren was hi <rhyme label="b" type="m" corresp="#s2:l2">ghelaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Iesus sloech op sijn <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hi sach den vigeboom <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Hi en conde daer niet aen <rhyme label="c" type="f">vinden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dan alleen veel groene <rhyme label="b" type="m" corresp="#s3:l2">blaen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Iesus sprac met soete <rhyme label="a" type="f">woerden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van nu tot gheender <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">En sal vrucht van v <rhyme label="c" type="f">comen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ghi blijft van nu <rhyme label="b" type="m" corresp="#s4:l2">vermaledijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als Iesus dat had <rhyme label="a" type="f">ghesproken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ende het woert was <rhyme label="b" type="m">wtghegaen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">So bleef die groene <rhyme label="c" type="f">vigeboom</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Al heel drooge verdorret <rhyme label="b" type="m" corresp="#s5:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die iongeren verwonderen <rhyme label="a" type="f">alle</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Van dat Iesus hadde <rhyme label="b" type="m">ghedaen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Dat die scone groene <rhyme label="c" type="f">vigeboom</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Verdroocht was so <rhyme label="b" type="m" corresp="#s6:l2">saen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Nu mogen wi ons wel <rhyme label="a" type="f">scamen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Als wij ten ordeel sullen <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Dat wij in alle ons <rhyme label="c" type="f">leuen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Gheen duecht en hebben <rhyme label="b" type="m" corresp="#s7:l2">ghedaen</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
