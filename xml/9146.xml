  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEnderickjes Soete <rhyme label="a" type="f">blickjes</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Herte-strickjes Hadden 't <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Van de Vader, En (con 't <rhyme label="c" type="f">nader</rhyme>)</l>
        <l id="s1:l4" met="4" type="+-">Van de Moeder, So <rhyme label="b" type="m" corresp="#s1:l2">verwert</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dat sy stonden // Vast <rhyme label="a" type="f">gebonden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Aan de vonden      Van sijn <rhyme label="b" type="m">oog</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Mit ontglipten // Mit <rhyme label="c" type="f">ontslipten</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Hy, en gaf sig naar om <rhyme label="b" type="m" corresp="#s2:l2">hoog</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Om te schijnen // Onder <rhyme label="a" type="f">fijne</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Cherubynen      In het <rhyme label="b" type="m">rond</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Daar het Geesje // Salig <rhyme label="c" type="f">weesje</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Niet en is dan tong en <rhyme label="b" type="m" corresp="#s3:l2">mond</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Om de reyen // Te <rhyme label="a" type="f">geleyen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Die hem 't schreyen      Van dit <rhyme label="b" type="m">Dal</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Haast ontleren // En <rhyme label="c" type="f">vereeren</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Met hem sullen 't eeuwig <rhyme label="b" type="m" corresp="#s4:l2">Al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Siet daer speelt hy // Nu, daar queelt <rhyme label="a" type="f">hy</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Daar verbeeldt hy      D' <rhyme label="b" type="m">Heylicheyd</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Siet daer blinckt hy // Nu; daar drinckt <rhyme label="c" type="f">hy</rhyme></l>
        <l id="s5:l4" met="4" type="+-">'s Hemels dranck in <rhyme label="b" type="m" corresp="#s5:l2">eeuwicheyd</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Inden hogen // Slaat hy d' <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Onbedrogen      Na <rhyme label="b" type="m">beneen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En vol wonder // Siet hy <rhyme label="c" type="f">onder</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Al dit tranen-dals <rhyme label="b" type="m" corresp="#s6:l2">geween</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Die sijn Hoeder,, En sijn <rhyme label="a" type="f">Moeder</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Waren, doeder      <rhyme label="b" type="m">Ader-slag</rhyme></l>
        <l id="s7:l3" met="4" type="+-">In sijn vleesje // Was en 't <rhyme label="c" type="f">Geesje</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Nog in 't lichaam-grafje <rhyme label="b" type="m" corresp="#s7:l2">lag</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">VRouwe! seydt hy, Man! wat schreyt <rhyme label="a" type="f">gy</rhyme>!</l>
        <l id="s8:l2" met="4" type="+-">Waarom beydt gy Niet de <rhyme label="b" type="m">tijd</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Dat gy na de <rhyme label="c" type="f">Christen-dade'</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Hier in ruste by my <rhyme label="b" type="m" corresp="#s8:l2">sijt</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Slaat uw' ogen // Maar om <rhyme label="a" type="f">hogen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Daar sy vlogen      Door 't <rhyme label="b" type="m">geloov</rhyme>.</l>
        <l id="s9:l3" met="4" type="+-">En uw deugden // By dees <rhyme label="c" type="f">vreugden</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Sijn niet meer dan d' eerste <rhyme label="b" type="m" corresp="#s9:l2">schoov</rhyme>:</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Hier en schreytmen; Siet! hier <rhyme label="a" type="f">reytmen</rhyme>:</l>
        <l id="s10:l2" met="4" type="+-">Hier verbreydtmen       Met <rhyme label="b" type="m">gesang</rhyme></l>
        <l id="s10:l3" met="4" type="+-">'sHemels daden,, En <rhyme label="c" type="f">genaden</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Sonder eynden eeuwen <rhyme label="b" type="m" corresp="#s10:l2">lang</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Hier verlustmen // Sig, en <rhyme label="a" type="f">rustmen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Vleytmen, kustmen      <rhyme label="b" type="m">Eeuwiglijck</rhyme>:</l>
        <l id="s11:l3" met="4" type="+-">Iuygtmen, singtmen, Danstmen, <rhyme label="c" type="f">springtmen</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Davids dans <rhyme label="b" type="m" corresp="#s11:l2">volmaacktelijck</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Des veragt gy // Al u clagt <rhyme label="a" type="f">vry</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Iuygt, en lagt vry      In het <rhyme label="b" type="m">Heyl</rhyme>.</l>
        <l id="s12:l3" met="4" type="+-">Dat door hopen,, Gy <rhyme label="c" type="f">belopen</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Moet, en ick so vroeg <rhyme label="b" type="m" corresp="#s12:l2">beseyl</rhyme>!</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Maackt uw hand' en // Herte <rhyme label="a" type="f">vande</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Werelds banden      Vry, en <rhyme label="b" type="m">rasch</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Sult gy inde // Vryheyd <rhyme label="c" type="f">vinde'</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Die wel eer uw kindje <rhyme label="b" type="m" corresp="#s13:l2">was</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Na de paden // Der <rhyme label="a" type="f">genaden</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Door te waden      Tot het <rhyme label="b" type="m">Goed</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Tot de Waarheyd,, Die de <rhyme label="c" type="f">claarheyd</rhyme></l>
        <l id="s14:l4" met="4" type="+-">Van uw ligt my scheem'ren <rhyme label="b" type="m" corresp="#s14:l2">doet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Maar mijn oogen // Die nu 't <rhyme label="a" type="f">hogen</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Sien, gedogen      'T laag niet <rhyme label="b" type="m">meer</rhyme>.</l>
        <l id="s15:l3" met="4" type="+-">Segt dan tot my // Blijft daar, tot <rhyme label="c" type="f">wy</rhyme></l>
        <l id="s15:l4" met="4" type="+-">Komen, maar comt gy niet <rhyme label="b" type="m" corresp="#s15:l2">weer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
