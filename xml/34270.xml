  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIlt dan niemandt <rhyme label="a" type="f">Rondom-leelijck</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Eens uyt-strijcken na <rhyme label="b" type="m">waerdy</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Soo moet ick ‘er aen: want <rhyme label="b" type="m" corresp="#s1:l2">sy</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Is oneerlijck, leelijck, <rhyme label="a" type="f" corresp="#s1:l1">smeelijck</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Trots, begeerigh, smeerigh, <rhyme label="c" type="m">vuyl</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Grof en ongeschickt van <rhyme label="c" type="m" corresp="#s1:l5">muyl</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Plomp en leelick sijn haer <rhyme label="a" type="f">zeden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Leelijck is haer wreedt <rhyme label="b" type="m">gelaet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Schrick’lijck leelijck is haer <rhyme label="b" type="m" corresp="#s2:l2">praet</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dick en leelijck zijn haer <rhyme label="a" type="f" corresp="#s2:l1">leden</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Daerom op het korst <rhyme label="c" type="m">geseydt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Rondom-leelijck heet de <rhyme label="c" type="m" corresp="#s2:l5">Meyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maer sy seght, sy is weer <rhyme label="a" type="f">eerlijck</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">’t Welck sy in haer hert <rhyme label="b" type="m">beklaeght</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Want het is haer noyt <rhyme label="b" type="m" corresp="#s3:l2">gevraeght</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Anders was sy wel <rhyme label="a" type="f" corresp="#s3:l1">begeerlijck</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Hadse maer versoeck <rhyme label="c" type="m">gehadt</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Maer het hooft belet haer <rhyme label="c" type="m" corresp="#s3:l5">dat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want ic seg u, ’t is wat <rhyme label="a" type="f">sonders</rhyme>;</l>
        <l id="s4:l2" met="4" type="+-">’t Schijnt een monster oft <rhyme label="b" type="m">gedrogh</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Op-gevoedt met <rhyme label="b" type="m" corresp="#s4:l2">Beyre-sogh</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Men behoort haer voor wat <rhyme label="a" type="f" corresp="#s4:l1">wonders</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Op de merckten aen de <rhyme label="c" type="m">lien</rhyme></l>
        <l id="s4:l6" met="4" type="+-">In een kraem te laten <rhyme label="c" type="m" corresp="#s4:l5">sien</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Want haer Moer hadd’ <rhyme label="a" type="f">on-voorsichtigh</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Rondom-leelijck op de <rhyme label="b" type="m">schoot</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En doen trad s’een padde <rhyme label="b" type="m" corresp="#s5:l2">doodt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Daer ’t fenijn uyt schoot seer <rhyme label="a" type="f" corresp="#s5:l1">schichtigh</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">En bespatte gantsch haer <rhyme label="c" type="m">borst</rhyme>:</l>
        <l id="s5:l6" met="4" type="+-">Juyst had Rondom-leelijck <rhyme label="c" type="m" corresp="#s5:l5">dorst</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">En sy heeft soo sterck <rhyme label="a" type="f">gesogen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Al ’t fenijn al was sy <rhyme label="b" type="m">jongh</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dat noch op dees uur’ haer <rhyme label="b" type="m" corresp="#s6:l2">tongh</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Met fenijn is <rhyme label="a" type="f" corresp="#s6:l1">over-togen</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Daerom magh oock geen <rhyme label="c" type="m">fenijn</rhyme></l>
        <l id="s6:l6" met="4" type="+-">By haer tongh geleken <rhyme label="c" type="m" corresp="#s6:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Sy is soo gewoon te <rhyme label="a" type="f">liegen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Dat als sy de waerheyt <rhyme label="b" type="m">seydt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Sulcx gantsch door <rhyme label="b" type="m" corresp="#s7:l2">onwetenheyt</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Haer ten monde uyt komt <rhyme label="a" type="f" corresp="#s7:l1">vliegen</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">Want die eer noch goedt en <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Acht niet hoe Godd’loos sy <rhyme label="c" type="m" corresp="#s7:l5">leeft</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Alle gasten te <rhyme label="a" type="f">bekladden</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Achter rugh met logens <rhyme label="b" type="m">sterck</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">In dees Wout-Aeps daegh’lijcks <rhyme label="b" type="m" corresp="#s8:l2">werck</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">O fenijn en schuym der <rhyme label="a" type="f" corresp="#s8:l1">padden</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Marten Kael-gat <rhyme label="c" type="m">Baviaen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Hoe sal u dit noch <rhyme label="c" type="m" corresp="#s8:l5">vergaen</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Men sal u noch so <rhyme label="a" type="f">af-malen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Dat de kinders <rhyme label="b" type="m">openbaer</rhyme></l>
        <l id="s9:l3" met="4" type="+-">V noch sullen roepen <rhyme label="b" type="m" corresp="#s9:l2">naer</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">En u schand’ elck een <rhyme label="a" type="f" corresp="#s9:l1">verhalen</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Als u Meester wort <rhyme label="c" type="m">beklaeght</rhyme>:</l>
        <l id="s9:l6" met="4" type="+-">Dien ghy sijn profijt <rhyme label="c" type="m" corresp="#s9:l5">ontjaeght</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
