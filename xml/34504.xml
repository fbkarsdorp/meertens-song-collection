    <melody>Daar was er een vrouwtje vroeg opgestaan</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KOmt drincke broeders al by <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Doet elck een pinjen <rhyme label="b" type="f">schincken</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Laet ons <rhyme label="b" type="f" corresp="#s1:l2">drincken</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Eer dat wy van malkander <rhyme label="a" type="m" corresp="#s1:l1">scheen</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Weert tapt noch <rhyme label="a" type="m" corresp="#s1:l1">een</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Laet al de droefheyt <rhyme label="b" type="f" corresp="#s1:l2">sincken</rhyme></l>
        <l id="s1:l7" met="2" type="+-">Droncke <rhyme label="b" type="f" corresp="#s1:l2">flincke</rhyme>,</l>
        <l id="s1:l8" met="2" type="+-">Laet ons <rhyme label="b" type="f" corresp="#s1:l2">dricken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al zijn ons kleeren al <rhyme label="a" type="m">ghescheurt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Niet van de motten <rhyme label="b" type="f">gheten</rhyme></l>
        <l id="s2:l3" met="2" type="+-">maer <rhyme label="b" type="f" corresp="#s2:l2">versleten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Lustigh daer om niet <rhyme label="a" type="m" corresp="#s2:l1">ghetreurt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Als 't langhe <rhyme label="a" type="m" corresp="#s2:l1">duert</rhyme></l>
        <l id="s2:l6" met="3" type="-+">'t Drincken doet dat al <rhyme label="b" type="f" corresp="#s2:l2">vergheten</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">Mijn <rhyme label="b" type="f" corresp="#s2:l2">secreten</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Laet ick <rhyme label="b" type="f" corresp="#s2:l2">weten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'k Bemin altijdt den <rhyme label="a" type="m">Tuytepot</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Als ick mijn keele <rhyme label="b" type="f">laeve</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">dat gaet <rhyme label="b" type="f" corresp="#s3:l2">braeve</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Een dronckxken wijn is niet <rhyme label="a" type="m" corresp="#s3:l1">bot</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Het maeckt ons <rhyme label="a" type="m" corresp="#s3:l1">sot</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wy en zijn noch niet <rhyme label="b" type="f" corresp="#s3:l2">begraven</rhyme></l>
        <l id="s3:l7" met="2" type="+-">g'heele <rhyme label="b" type="f" corresp="#s3:l2">gave</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Niemants <rhyme label="b" type="f" corresp="#s3:l2">slaeve</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick prijs het edel druyve <rhyme label="a" type="m">sop</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Daer toe was ick <rhyme label="b" type="f">ghedreven</rhyme>,</l>
        <l id="s4:l3" met="2" type="+-">Al mijn <rhyme label="b" type="f" corresp="#s4:l2">Leven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Mijn ghelt dat maeck ick effen <rhyme label="a" type="m" corresp="#s4:l1">op</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Wijn in de <rhyme label="a" type="m" corresp="#s4:l1">hop</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wilt my noch een dronckxken <rhyme label="b" type="f" corresp="#s4:l2">gheven</rhyme>,</l>
        <l id="s4:l7" met="2" type="+-">Al waer 't <rhyme label="b" type="f" corresp="#s4:l2">seven</rhyme>,</l>
        <l id="s4:l8" met="2" type="+-">Lieven <rhyme label="b" type="f" corresp="#s4:l2">Steven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'k Brengh u een teughsken van dit <rhyme label="a" type="m">nat</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Het is seer soet van <rhyme label="b" type="f">smaecken</rhyme>,</l>
        <l id="s5:l3" met="2" type="+-">'t Sal u <rhyme label="b" type="f" corresp="#s5:l2">raecken</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Drinckt men te veel van Bachus <rhyme label="a" type="m" corresp="#s5:l1">vat</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Soo wort men <rhyme label="a" type="m" corresp="#s5:l1">sat</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Noch een pintjen is mijn <rhyme label="b" type="f" corresp="#s5:l2">taeck</rhyme></l>
        <l id="s5:l7" met="2" type="+-">Eer ick <rhyme label="b" type="f" corresp="#s5:l2">braecke</rhyme>,</l>
        <l id="s5:l8" met="2" type="+-">'k Sal het <rhyme label="b" type="f" corresp="#s5:l2">staecken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Om soo te scheyden 't doet my <rhyme label="a" type="m">pijn</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">'k Wil mijnen dorst <rhyme label="b" type="f">verdrijven</rhyme>,</l>
        <l id="s6:l3" met="2" type="+-">Drincken <rhyme label="b" type="f" corresp="#s6:l2">blijven</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Heer weert tapt noch een pot met <rhyme label="a" type="m" corresp="#s6:l1">wijn</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Het magh wel <rhyme label="a" type="m" corresp="#s6:l1">zijn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Want t'en gaet my maer <rhyme label="b" type="f" corresp="#s6:l2">beklijven</rhyme>,</l>
        <l id="s6:l7" met="2" type="+-">Wilt niet <rhyme label="b" type="f" corresp="#s6:l2">schrijven</rhyme>,</l>
        <l id="s6:l8" met="2" type="+-">'t Wijf sou <rhyme label="b" type="f" corresp="#s6:l2">kijven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Tapt noch een stoop wijn voor mijn <rhyme label="a" type="m">gheldt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Eer ick naer huys gaen <rhyme label="b" type="f">kijcken</rhyme>,</l>
        <l id="s7:l3" met="2" type="+-">'k Sal my <rhyme label="b" type="f" corresp="#s7:l2">strijcken</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Hier ligh ick gans ter neer <rhyme label="a" type="m" corresp="#s7:l1">ghevelt</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Laet sonder <rhyme label="a" type="m" corresp="#s7:l1">gelt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Dronckaers worden selden <rhyme label="b" type="f" corresp="#s7:l2">rijck</rhyme>,</l>
        <l id="s7:l7" met="2" type="+-">Al <rhyme label="b" type="f" corresp="#s7:l2">ghelijcke</rhyme>,</l>
        <l id="s7:l8" met="2" type="+-">T'is <rhyme label="b" type="f" corresp="#s7:l2">publijcke</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
