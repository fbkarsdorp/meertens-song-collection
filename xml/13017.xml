    <melody>Het was of zij het mij zeide</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Nu zitten wy aan een <rhyme label="a" type="f">Tafel</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Die louter is <rhyme label="b" type="m">gelaân</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Met gezoden en <rhyme label="b" type="m" corresp="#s1:l2">gebraân</rhyme>:</l>
        <l id="s1:l4" met="2" type="-+">Wy mogen wel <rhyme label="c" type="f">teeren</rhyme>,</l>
        <l id="s1:l5" met="1" type="-+">En <rhyme label="c" type="f" corresp="#s1:l4">smeeren</rhyme></l>
        <l id="s1:l6" met="1" type="-+">Als <rhyme label="c" type="f" corresp="#s1:l4">heeren</rhyme>,</l>
        <l id="s1:l7" met="1" type="-+">En <rhyme label="d" type="f">tasten</rhyme></l>
        <l id="s1:l8" met="1" type="-+">Als <rhyme label="d" type="f" corresp="#s1:l7">gasten</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Dat op zijn / haar <rhyme label="c" type="f" corresp="#s1:l4">begeeren</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">'t Gediste vrymoedelijk <rhyme label="e" type="m">aan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Men zou door al dit <rhyme label="a" type="f">braszen</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Wel kroppen en smooren <rhyme label="b" type="m">schier</rhyme>.</l>
        <l id="s2:l3" met="3" type="+-">Hey! is 'er geen Wijn of <rhyme label="b" type="m" corresp="#s2:l2">Bier</rhyme>?</l>
        <l id="s2:l4" met="2" type="-+">Gans bloed is dat <rhyme label="c" type="f">smullen</rhyme>!</l>
        <l id="s2:l5" met="1" type="-+">Breng <rhyme label="c" type="f" corresp="#s2:l4">pullen</rhyme>,</l>
        <l id="s2:l6" met="1" type="-+">Wilt <rhyme label="c" type="f" corresp="#s2:l4">vullen</rhyme></l>
        <l id="s2:l7" met="1" type="-+">Een <rhyme label="d" type="f">glaasje</rhyme>,</l>
        <l id="s2:l8" met="1" type="-+">Ai <rhyme label="d" type="f" corresp="#s2:l7">haasje</rhyme>!</l>
        <l id="s2:l9" met="2" type="-+">Hoor jongens, wy <rhyme label="c" type="f" corresp="#s2:l4">zullen</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Dees Romer eens leegen al <rhyme label="e" type="m">t'zaam</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gebuur ik zal 't u <rhyme label="a" type="f">brengen</rhyme>;</l>
        <l id="s3:l2" met="3" type="+-">Zie daar dat gaatje <rhyme label="b" type="m">veur</rhyme>.</l>
        <l id="s3:l3" met="3" type="+-">Nou, gaat 'er ook zo me <rhyme label="b" type="m" corresp="#s3:l2">deur</rhyme>.</l>
        <l id="s3:l4" met="2" type="-+">Kom slaat 'er jou <rhyme label="c" type="f">handje</rhyme></l>
        <l id="s3:l5" met="1" type="-+">Aan 't <rhyme label="c" type="f" corresp="#s3:l4">kantje</rhyme></l>
        <l id="s3:l6" met="1" type="-+">Van 't <rhyme label="c" type="f" corresp="#s3:l4">rantje</rhyme>,</l>
        <l id="s3:l7" met="1" type="-+">Ter <rhyme label="d" type="f">deege</rhyme></l>
        <l id="s3:l8" met="1" type="-+">Wilt <rhyme label="d" type="f" corresp="#s3:l7">leege</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Het Romertje; <rhyme label="c" type="f" corresp="#s3:l4">wantje</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Het anders zult moeten <rhyme label="e" type="m">herdoen</rhyme>.</l>
      </lg>
    </lg>
  </text>
