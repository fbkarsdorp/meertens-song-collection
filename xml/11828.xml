<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11828</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Edele kersouw</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">ALs Christus was te Iericho <rhyme label="a" type="f">gekomen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Raeckt' yder op de <rhyme label="b" type="m">been</rhyme>.</l>
        <l id="s1:l3" met="5" type="-+">Zacheus mee, dit hebbende <rhyme label="a" type="f" corresp="#s1:l1">vernomen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die wild' hem mede <rhyme label="b" type="m" corresp="#s1:l2">sien</rhyme>.</l>
        <l id="s1:l5" met="5" type="-+">Want dees was rijck, en 't hoofd der <rhyme label="c" type="f">Tollenaren</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dies wild' hy uyt lust <rhyme label="d" type="f">gedreven</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Sien al 't weder <rhyme label="c" type="f" corresp="#s1:l5">varen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Maer soo hy kort en kleyn was van <rhyme label="a" type="f">persoone</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Beletten 't hem de <rhyme label="b" type="m">schaer</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Dies hy sich ylt, om sich mee te <rhyme label="a" type="f" corresp="#s2:l1">vertoonen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Want hy hem volghde <rhyme label="b" type="m" corresp="#s2:l2">naer</rhyme>:</l>
        <l id="s2:l5" met="5" type="-+">Daer is hy ras een Vijghboom <rhyme label="c" type="f">op-gestegen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Op dat hy niet groot <rhyme label="d" type="f">opmercken</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Mocht bespien de <rhyme label="c" type="f" corresp="#s2:l5">wegen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Als Iesus sagh Zacheus in de <rhyme label="a" type="f">tacken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sprack hy hem vriend'lijck <rhyme label="b" type="m">aen</rhyme>:</l>
        <l id="s3:l3" met="5" type="-+">Zachee komt, doch haestigh <rhyme label="a" type="f" corresp="#s3:l1">nedersacken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En wilt stracks met my <rhyme label="b" type="m" corresp="#s3:l2">gaen</rhyme>:</l>
        <l id="s3:l5" met="5" type="-+">VVant heden wil ick tot u huys in <rhyme label="c" type="f">keeren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Op dat ghy wert <rhyme label="d" type="f">onderwesen</rhyme></l>
        <l id="s3:l7" met="3" type="+-">In den wegh des <rhyme label="c" type="f" corresp="#s3:l5">Heeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Zacheus sprangh met blijdschap na <rhyme label="a" type="f">beneden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En heet hem <rhyme label="b" type="m">willekom</rhyme>:</l>
        <l id="s4:l3" met="5" type="-+">Wanneer de Schaer aenhoorde dese <rhyme label="a" type="f" corresp="#s4:l1">reden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Soo stonden sy als <rhyme label="b" type="m" corresp="#s4:l2">stom</rhyme>:</l>
        <l id="s4:l5" met="5" type="-+">Om dat hy gingh met desen Sondaer <rhyme label="c" type="f">spreken</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Swol het hert vol <rhyme label="d" type="f">misgenoegen</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">En vol snoode <rhyme label="c" type="f" corresp="#s4:l5">treken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Als Iesus was ter herbergh <rhyme label="a" type="f">in-getreden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Sprack hem Zacheus <rhyme label="b" type="m">aen</rhyme>:</l>
        <l id="s5:l3" met="5" type="-+">Ick bid u lett, ach Heer, op dese <rhyme label="a" type="f" corresp="#s5:l1">reden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Soo ick yet heb <rhyme label="b" type="m" corresp="#s5:l2">misdaen</rhyme>,</l>
        <l id="s5:l5" met="5" type="-+">Geef ick de helft van mijne haef den <rhyme label="c" type="f">armen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Soo ick yemandt heb <rhyme label="d" type="f">bedrogen</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">'t Viervout weer die <rhyme label="c" type="f" corresp="#s5:l5">karmen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Dies Iesus sprack, u huys is <rhyme label="a" type="f">weder-varen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Geluck en <rhyme label="b" type="m">saligheyt</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">Om dat ghy zijt van Abrahams <rhyme label="a" type="f" corresp="#s6:l1">dienaren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dien 't Heyl is <rhyme label="b" type="m" corresp="#s6:l2">toe-geseyt</rhyme>:</l>
        <l id="s6:l5" met="5" type="-+">VVant 's Menschen Soon die is hier toe <rhyme label="c" type="f">verscheenen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Om 't verlooren weer te <rhyme label="d" type="f">soecken</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">En saligh <rhyme label="c" type="f" corresp="#s6:l5">vereenen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Wel salig huys waer Christus schenckt den <rhyme label="a" type="f">zegen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">‘Daer springht een gulde <rhyme label="b" type="m">Bron</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">‘Daer bloeyt een stroom en Goddelijcke <rhyme label="a" type="f" corresp="#s7:l1">regen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">‘Des Hemels blyde <rhyme label="b" type="m" corresp="#s7:l2">Son</rhyme>.</l>
        <l id="s7:l5" met="5" type="-+">‘Daelt in ons hert en wilt u wooningh <rhyme label="c" type="f">maken</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">‘Dat wy uyt oprechter <rhyme label="d" type="f">herten</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">‘Al het quaed <rhyme label="c" type="f" corresp="#s7:l5">versaken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
