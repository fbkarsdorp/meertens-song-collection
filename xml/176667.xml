    <melody>Het daagt in de oosten</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ick heb een <rhyme label="a" type="f">uytghelesen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Groot Avondtmael <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En veel gasten tot <rhyme label="a" type="f" corresp="#s1:l1">desenh</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ghenoodt uyt <rhyme label="b" type="m" corresp="#s1:l2">minsaemheyt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">D’uyr om ter Tafel <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Is <rhyme label="a" type="f" corresp="#s1:l1">gheresen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O ghy my <rhyme label="a" type="f">onderdanen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Knecht, gaet nu het <rhyme label="b" type="m">ghetal</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Der ghenoode <rhyme label="a" type="f" corresp="#s2:l1">vermanen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Te komen, seght ‘t is <rhyme label="b" type="m" corresp="#s2:l2">al</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Bereyt, dat sy en <rhyme label="a" type="f" corresp="#s2:l1">hoeven</rhyme></l>
        <l id="s2:l6" met="2" type="+-">Niet te <rhyme label="a" type="f" corresp="#s2:l1">toeven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Komt alle wel <rhyme label="a" type="f">beraden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O mensch, wie dat ghy <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Bereydt is uyt <rhyme label="a" type="f" corresp="#s3:l1">ghenaden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">‘s Levens soete <rhyme label="b" type="m" corresp="#s3:l2">maeltijt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">‘t Is nu de uyt om <rhyme label="a" type="f" corresp="#s3:l1">komen</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Uyt ‘t <rhyme label="a" type="f" corresp="#s3:l1">verdomen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Eenen Acker seer <rhyme label="a" type="f">schoone</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Heb ick ghekocht, en <rhyme label="b" type="m">dien</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Moet ick self in <rhyme label="a" type="f" corresp="#s4:l1">persoone</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Nu noodigh gaen <rhyme label="b" type="m" corresp="#s4:l2">besien</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">My isser wel te <rhyme label="a" type="f" corresp="#s4:l1">deghen</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Aen <rhyme label="a" type="f" corresp="#s4:l1">gheleghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dat heerlijcke <rhyme label="a" type="f">Landt-Bouwen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">‘t Veldt vol vruchten <rhyme label="b" type="m">verciert</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Is lustigh om <rhyme label="a" type="f" corresp="#s5:l1">t’aen-schouwen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Vee, en veel schoon <rhyme label="b" type="m" corresp="#s5:l2">ghediert</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Daer my profijt van <rhyme label="a" type="f" corresp="#s5:l1">allen</rhyme></l>
        <l id="s5:l6" met="2" type="+-">Mach <rhyme label="a" type="f" corresp="#s5:l1">toe-vallen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick bid u wilt <rhyme label="a" type="f">beloven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">My t’excuseeren <rhyme label="b" type="m">schier</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Van die weerschap daer <rhyme label="a" type="f" corresp="#s6:l1">boven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Want mijn hert is doch <rhyme label="b" type="m" corresp="#s6:l2">hier</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Te leven <rhyme label="a" type="f" corresp="#s6:l1">overvloedigh</rhyme></l>
        <l id="s6:l6" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s6:l1">hooghmoedigh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ick hebbe vijf jonck <rhyme label="a" type="f">Ossen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Ghekocht, dus bidt ick <rhyme label="b" type="m">u</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">My met onschult te <rhyme label="a" type="f" corresp="#s7:l1">lossen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Want heden treck ick <rhyme label="b" type="m" corresp="#s7:l2">nu</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Om te besien die <rhyme label="a" type="f" corresp="#s7:l1">Beesten</rhyme>,</l>
        <l id="s7:l6" met="2" type="+-">Niet ter <rhyme label="a" type="f" corresp="#s7:l1">feesten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Want ick moet nu seer <rhyme label="a" type="f">vyerigh</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Waer nemen den tijdt <rhyme label="b" type="m">eel</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Sy en zijn al niet <rhyme label="a" type="f" corresp="#s8:l1">gierigh</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Die gheeren hebben <rhyme label="b" type="m" corresp="#s8:l2">veel</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Men moet voor d’oude <rhyme label="a" type="f" corresp="#s8:l1">daghen</rhyme></l>
        <l id="s8:l6" met="2" type="+-">Sorghe <rhyme label="a" type="f" corresp="#s8:l1">draghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ende ick heb uyt <rhyme label="a" type="f">minne</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Ghenomen nu een <rhyme label="b" type="m">Wijf</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Die staet seer in mijn <rhyme label="a" type="f" corresp="#s9:l1">sinne</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Om haer schoon jonghe <rhyme label="b" type="m" corresp="#s9:l2">lijf</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">My en komen gheen <rhyme label="a" type="f" corresp="#s9:l1">saken</rhyme></l>
        <l id="s9:l6" met="2" type="+-">Soo <rhyme label="a" type="f" corresp="#s9:l1">vermaken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Liefde onkuysch van <rhyme label="a" type="f">zede</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Is oorsake hier <rhyme label="b" type="m">van</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Dat ick nu oock niet <rhyme label="a" type="f" corresp="#s10:l1">mede</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Gaen en wil, noch en <rhyme label="b" type="m" corresp="#s10:l2">kan</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Want my noyt gaen te <rhyme label="a" type="f" corresp="#s10:l1">gaste</rhyme></l>
        <l id="s10:l6" met="2" type="+-">Ergher <rhyme label="a" type="f" corresp="#s10:l1">paste</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Te rechte heb ick <rhyme label="a" type="f">tooren</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Ick noode <rhyme label="b" type="m">blijdelijck</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Mijn Rijck elck een te <rhyme label="a" type="f" corresp="#s11:l1">vooren</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Maer al tot <rhyme label="b" type="m" corresp="#s11:l2">tijdelijck</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Streckt meest der yd’le <rhyme label="a" type="f" corresp="#s11:l1">menschen</rhyme></l>
        <l id="s11:l6" met="2" type="+-">Sin en <rhyme label="a" type="f" corresp="#s11:l1">wenschen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Gaet snel nu op de <rhyme label="a" type="f">straten</rhyme></l>
        <l id="s12:l2" met="3" type="-+">En steeghskens van der <rhyme label="b" type="m">Stadt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Brenght sonder achter <rhyme label="a" type="f" corresp="#s12:l1">laten</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Dat Arem volck, en <rhyme label="b" type="m" corresp="#s12:l2">wat</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Voor kreupele, Lamm’ en <rhyme label="a" type="f" corresp="#s12:l1">Blinden</rhyme>,</l>
        <l id="s12:l6" met="2" type="+-">Ghy sult <rhyme label="a" type="f" corresp="#s12:l1">vinden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Hier in te komen <rhyme label="a" type="f">laetse</rhyme>:</l>
        <l id="s13:l2" met="3" type="-+">O Heer, het is <rhyme label="b" type="m">ghedaen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Noch isser ruymt’ en <rhyme label="a" type="f" corresp="#s13:l1">plaetse</rhyme>:</l>
        <l id="s13:l4" met="3" type="-+">Soo wilt te lande <rhyme label="b" type="m" corresp="#s13:l2">gaen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Aen Thuynen daer <rhyme label="a" type="f" corresp="#s13:l1">gheleghen</rhyme>,</l>
        <l id="s13:l6" met="2" type="+-">En op <rhyme label="a" type="f" corresp="#s13:l1">weghen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Ende ghy sulse <rhyme label="a" type="f">dwinghen</rhyme></l>
        <l id="s14:l2" met="3" type="-+">In te komen <rhyme label="b" type="m">bevreest</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Met mijn Woordt, dat door <rhyme label="a" type="f" corresp="#s14:l1">dringhen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Kan, tot dat ziel en <rhyme label="b" type="m" corresp="#s14:l2">Gheest</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Scheydet, en oock met <rhyme label="a" type="f" corresp="#s14:l1">eenen</rhyme></l>
        <l id="s14:l6" met="2" type="+-">Mergh en <rhyme label="a" type="f" corresp="#s14:l1">beenen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Sulck volck laet nu <rhyme label="a" type="f">vervullen</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Mijn huys, want <rhyme label="b" type="m">ghenerael</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Gheene smaecken en <rhyme label="a" type="f" corresp="#s15:l1">sullen</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Mijn vreuchdigh <rhyme label="b" type="m" corresp="#s15:l2">Avondtmael</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Van die daer te <rhyme label="a" type="f" corresp="#s15:l1">vergaren</rhyme></l>
        <l id="s15:l6" met="2" type="+-">Ghenoodt <rhyme label="a" type="f" corresp="#s15:l1">waren</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Het Avondtmael <rhyme label="a" type="f">waeragtig</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">‘t Hemelsch wesen <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Om daer te komen <rhyme label="a" type="f" corresp="#s16:l1">krachtig</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Broeders, u beste <rhyme label="b" type="m" corresp="#s16:l2">doet</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Den Heere sal u <rhyme label="a" type="f" corresp="#s16:l1">stercken</rhyme></l>
        <l id="s16:l6" met="2" type="+-">In sijn <rhyme label="a" type="f" corresp="#s16:l1">wercken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
