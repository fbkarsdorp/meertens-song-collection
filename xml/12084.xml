<song>
  <meta>
    <id>12084</id>
    <date>
      <year-start>1617</year-start>
      <year-end>1617</year-end>
    </date>
    <location>
      <orginal-name>antwerpen</orginal-name>
      <standard-name>Antwerp, Belgium</standard-name>
      <coordinates>
        <lon>51.2211097</lon>
        <lat>4.3997081</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Ik heb de groene straten</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn Enghel wert <rhyme label="a" type="f">ghesonden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Godt den Heere <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Tot een die lach in <rhyme label="a" type="f" corresp="#s1:l1">sonden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En swam in ‘swerelts <rhyme label="b" type="m" corresp="#s1:l2">vloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sondaer ghy meucht wel <rhyme label="a" type="f">beuen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat ghy in sonden <rhyme label="b" type="m">zijt</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Den Heer’ sal v <rhyme label="a" type="f" corresp="#s2:l1">begheuen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En korten uwen <rhyme label="b" type="m" corresp="#s2:l2">tijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Sondaer lach <rhyme label="a" type="f">alleene</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hy wiert verschrickt <rhyme label="b" type="m">voorwaer</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Seer ras was hy te <rhyme label="a" type="f" corresp="#s3:l1">beene</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Benaut soo stont hy <rhyme label="b" type="m" corresp="#s3:l2">daer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt v quaet leuen <rhyme label="a" type="f">laten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">De deucht wilt nemen <rhyme label="b" type="m">aen</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Neemt Godt tot uwer <rhyme label="a" type="f" corresp="#s4:l1">baten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Eer v de doot komt <rhyme label="b" type="m" corresp="#s4:l2">slaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sou my de doodt <rhyme label="a" type="f">beuanghen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In mijn quaet leuen <rhyme label="b" type="m">groot</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Och doetse wat <rhyme label="a" type="f" corresp="#s5:l1">verlanghen</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Ick ben van deuchden <rhyme label="b" type="m" corresp="#s5:l2">bloot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick en sal v niet <rhyme label="a" type="f">laten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Stelt v in goeden <rhyme label="b" type="m">staet</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Mijn woorden wilt wel <rhyme label="a" type="f" corresp="#s6:l1">vaten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Eer ghy ter aerden <rhyme label="b" type="m" corresp="#s6:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wat helpt het <rhyme label="a" type="f">triumpheren</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als ick soo steruen <rhyme label="b" type="m">moet</rhyme>?</l>
        <l id="s7:l3" met="3" type="-+">Ick wilt al <rhyme label="a" type="f" corresp="#s7:l1">renonceren</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En soecken d’eeuwich <rhyme label="b" type="m" corresp="#s7:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Och mijn beminde <rhyme label="a" type="f">Siele</rhyme></l>
        <l id="s8:l2" met="3" type="-+">En zijt niet <rhyme label="b" type="m">wanckelbaer</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Dat v niet en <rhyme label="a" type="f" corresp="#s8:l1">verniele</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Het pack der sonden <rhyme label="b" type="m" corresp="#s8:l2">swaer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Adieu o werelt <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ick neme mijnen <rhyme label="b" type="m">ganck</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Tot Christus doorne <rhyme label="a" type="f" corresp="#s9:l1">kroone</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En tot dat Cruyce <rhyme label="b" type="m" corresp="#s9:l2">lanck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
