  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DIe Jesum heeft <rhyme label="a" type="f">wtgelesen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Voor eenen Bruyd'gom <rhyme label="b" type="m">soet</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Zijn meeninge die moet <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wt liefd', oprecht en <rhyme label="b" type="m" corresp="#s1:l2">goet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">In druck en <rhyme label="b" type="m" corresp="#s1:l2">teghenspoet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En moet hy niet <rhyme label="c" type="f">vertsagen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Maer dragen, sonder <rhyme label="c" type="f" corresp="#s1:l6">clagen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Al wat Godt met hem <rhyme label="b" type="m" corresp="#s1:l2">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ons Bruydegom <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Is door lijden <rhyme label="b" type="m">ingegaen</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Int rijck, dat eewighe <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Lijden is de rechte <rhyme label="b" type="m" corresp="#s2:l2">baen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Coemt ons dan lijden <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Wy moetent met <rhyme label="c" type="f">verlanghen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Met danckbaerheyt <rhyme label="c" type="f" corresp="#s2:l6">ontfanghen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Ons daer niet in <rhyme label="b" type="m" corresp="#s2:l2">verslaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Godts wtvercoren <rhyme label="a" type="f">vrienden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Zijn met lijden <rhyme label="b" type="m">gecastijdt</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Al die hem trouwelijck <rhyme label="a" type="f" corresp="#s3:l1">dienden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hebben haer in 't cruys <rhyme label="b" type="m" corresp="#s3:l2">verblijt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Want Christus selve <rhyme label="b" type="m" corresp="#s3:l2">belijdt</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Die 'k lief, sal ick <rhyme label="c" type="f">castijden</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Gods kind'ren moeten <rhyme label="c" type="f" corresp="#s3:l6">lijden</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Alhier een corten <rhyme label="b" type="m" corresp="#s3:l2">tijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Door lijden wortmen soo <rhyme label="a" type="f">puere</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ghelijck als Gout door 't <rhyme label="b" type="m">vyere</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Contrari is de <rhyme label="a" type="f" corresp="#s4:l1">natuere</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wt liefd' verdraghet <rhyme label="b" type="m" corresp="#s4:l2">hier</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Aensiet Christus <rhyme label="b" type="m" corresp="#s4:l2">manier</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Int hoofken hy met <rhyme label="c" type="f">beven</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Hem selven heeft <rhyme label="c" type="f" corresp="#s4:l6">ghegeven</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Inden wil zijns Vaders <rhyme label="b" type="m" corresp="#s4:l2">fier</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Broeders en susters <rhyme label="a" type="f">vercoren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Patienci in lijden <rhyme label="b" type="m">toont</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Ist anders, u deucht is <rhyme label="a" type="f" corresp="#s5:l1">verloren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Grootelijck ghy u selven <rhyme label="b" type="m" corresp="#s5:l2">hoont</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Niemant sal werden <rhyme label="b" type="m" corresp="#s5:l2">gecroont</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dan die vroom heeft <rhyme label="c" type="f">gestreden</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En met ghedult <rhyme label="c" type="f" corresp="#s5:l6">gheleden</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Die wort rijck'lijck <rhyme label="b" type="m" corresp="#s5:l2">gheloont</rhyme>.</l>
      </lg>
    </lg>
  </text>
