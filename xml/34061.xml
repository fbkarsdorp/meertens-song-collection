  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LOoft God, Christelycke <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Wilt d'off' rande eer' <rhyme label="b" type="f">toe-gheven</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die wy nutten all' te <rhyme label="a" type="m" corresp="#s1:l1">gaer</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Op den Paesch-dagh <rhyme label="b" type="f" corresp="#s1:l2">hoogh-ver-heven</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Dees' off' rande is het <rhyme label="c" type="m">Lam</rhyme></l>
        <l id="s1:l6" met="4" type="+-">'t Welck des werelds sonden <rhyme label="c" type="m" corresp="#s1:l5">nam</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dees' Off'rande is het <rhyme label="a" type="m">Lam</rhyme></l>
        <l id="s2:l2" met="4" type="+-">'t Welck de schaepen all' <rhyme label="b" type="f">ver-loste</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Stilde synen Vader <rhyme label="a" type="m" corresp="#s2:l1">gram</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">'t Ghen' hem oock het leven <rhyme label="b" type="f" corresp="#s2:l2">koste</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Als de sondaers kleyn en <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Christus soende door syn <rhyme label="c" type="m" corresp="#s2:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Leven t'saemen en de <rhyme label="a" type="m">Doodt</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Hebben wonderlyck <rhyme label="b" type="f">ghestreden</rhyme></l>
        <l id="s3:l3" met="4" type="+-">In een twee-ghevecht seer <rhyme label="a" type="m" corresp="#s3:l1">groot</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">'s Levens oorsprongh <rhyme label="b" type="f" corresp="#s3:l2">over-leden</rhyme></l>
        <l id="s3:l5" met="4" type="+-">De dood over-wonnen <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En als doods-ver-winner <rhyme label="c" type="m" corresp="#s3:l5">leeft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wat hebt g'op den wegh <rhyme label="a" type="m">ghesien</rhyme>?</l>
        <l id="s4:l2" met="4" type="+-">Wilt dit vry te kennen <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">O Maria, aen <rhyme label="a" type="m" corresp="#s4:l1">ons-liên</rhyme>?</l>
        <l id="s4:l4" met="4" type="+-">'t Graf van Christus, die tot 't <rhyme label="b" type="f" corresp="#s4:l2">leven</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Van de dood is <rhyme label="c" type="m">op-ghestaen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En syn glori' heeft <rhyme label="c" type="m" corresp="#s4:l5">ont-faen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">En Gods Enghels, die <rhyme label="a" type="m">ghewis</rhyme></l>
        <l id="s5:l2" met="4" type="+-">By 't Graf de ghetuyghen <rhyme label="b" type="f">waren</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Van dees' bly <rhyme label="a" type="m" corresp="#s5:l1">ver-rysenis</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Dus ick liet de vreese <rhyme label="b" type="f" corresp="#s5:l2">varen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Als den sweet-doeck, en het <rhyme label="c" type="m">kleed</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Ick daer sagh tot een <rhyme label="c" type="m" corresp="#s5:l5">be-scheed</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Myn hoôp Christus <rhyme label="a" type="m">op-ghestaen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Sal in Galileë <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Al-waer hy u sal <rhyme label="a" type="m" corresp="#s6:l1">voor-gaen</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">Want hy waerlyck is <rhyme label="b" type="f" corresp="#s6:l2">ver-resen</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Christe winner van de <rhyme label="c" type="m">dood</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Ont-fermt onser in den <rhyme label="c" type="m" corresp="#s6:l5">nood</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
