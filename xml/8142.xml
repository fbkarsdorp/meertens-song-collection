    <melody>Psalm 008 Datheen</melody>
    <categories/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">IN de laetst <rhyme label="a" type="m">uer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Sullen de dooden <rhyme label="b" type="f">verrijsen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Soo de <rhyme label="a" type="m" corresp="#s1:l1">Schriftuer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Clarelijck gaet <rhyme label="b" type="f" corresp="#s1:l2">bewijsen</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Dan en wordt <rhyme label="c" type="m">daer</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Voor niemandt eenigh <rhyme label="d" type="f">voordeel</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Wy moeten hier <rhyme label="c" type="m" corresp="#s1:l5">naer</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Al comen voor dat <rhyme label="d" type="f" corresp="#s1:l6">oordeel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Alst gheshien <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Soo Christus woorden <rhyme label="b" type="f">uytgaven</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Dan sullen sy <rhyme label="a" type="m" corresp="#s2:l1">al</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die ligghen in de <rhyme label="b" type="f" corresp="#s2:l2">graven</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Hooren <rhyme label="c" type="m">'tgheluyt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van des Heeren <rhyme label="d" type="f">blasoene</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">En comen <rhyme label="c" type="m" corresp="#s2:l5">uyt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">De graven ten dien <rhyme label="d" type="f" corresp="#s2:l6">saysoene</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">'tSy wijf oft <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die goet hebben <rhyme label="b" type="f">bedreven</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Die sullen <rhyme label="a" type="m" corresp="#s3:l1">dan</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Verrijsen tot d'eeuwigh <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Maer d'ander <rhyme label="c" type="m">party</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die sullen dan <rhyme label="d" type="f">voortcomen</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Omme dat <rhyme label="c" type="m" corresp="#s3:l5">sy</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Souden gaen in 't <rhyme label="d" type="f" corresp="#s3:l6">verdomen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Alst gheschien <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Na Paulus <rhyme label="b" type="f">verclaren</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Dan moeten wy <rhyme label="a" type="m" corresp="#s4:l1">al</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Voor den Rechterstoel <rhyme label="b" type="f" corresp="#s4:l2">openbaren</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Van Christus <rhyme label="c" type="m">eersaem</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die sal een yeder <rhyme label="d" type="f">gheven</rhyme></l>
        <l id="s4:l7" met="2" type="-+">In zijn <rhyme label="c" type="m" corresp="#s4:l5">lichaem</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Na dat hy heeft <rhyme label="d" type="f" corresp="#s4:l6">bedreven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Paulus <rhyme label="a" type="m">bewees</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Aen diversche <rhyme label="b" type="f">ghemeenten</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Dat dit selve <rhyme label="a" type="m" corresp="#s5:l1">vleesch</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Soude verrijsen met zijn <rhyme label="b" type="f" corresp="#s5:l2">ghebeenten</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Maer <rhyme label="c" type="m">principael</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Aen de Corintsche <rhyme label="d" type="f">Kercke</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Daer hy 't <rhyme label="c" type="m" corresp="#s5:l5">altemael</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Schrijft, hoet sal gaen te <rhyme label="d" type="f" corresp="#s5:l6">wercke</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Iob die <rhyme label="a" type="m">beduyt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Godt sal my hier na <rhyme label="b" type="f">verwecken</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Met deser <rhyme label="a" type="m" corresp="#s6:l1">huyt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Sal hy my <rhyme label="b" type="f" corresp="#s6:l2">overtrecken</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Met dees ooghen <rhyme label="c" type="m">(alleen</rhyme>)</l>
        <l id="s6:l6" met="3" type="-+">Soo sal ick Godt <rhyme label="d" type="f">aenschouwen</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">En anders <rhyme label="c" type="m" corresp="#s6:l5">gheen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Dat was al Iobs <rhyme label="d" type="f" corresp="#s6:l6">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Wy vinden <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In Esaia <rhyme label="b" type="f">gheschreven</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Heer uwe <rhyme label="a" type="m" corresp="#s7:l1">doon</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Sullen wederom <rhyme label="b" type="f" corresp="#s7:l2">leven</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Met haer <rhyme label="c" type="m">lichaem</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Soo sullen sy <rhyme label="d" type="f">verrijsen</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Des Heeren <rhyme label="c" type="m" corresp="#s7:l5">Naem</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Sullen sy loven en <rhyme label="d" type="f" corresp="#s7:l6">prijsen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Door desen <rhyme label="a" type="m">troost</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Hebben de seven <rhyme label="b" type="f">sonen</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Als sy wierden <rhyme label="a" type="m" corresp="#s8:l1">gherooft</rhyme></l>
        <l id="s8:l4" met="3" type="-+">'t Lijden verdraghen <rhyme label="b" type="f" corresp="#s8:l2">connen</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Sy waren te <rhyme label="c" type="m">vreen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En lieten oock haer <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Sy seyden dees <rhyme label="c" type="m" corresp="#s8:l5">leen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Sal Godt ons weder <rhyme label="d" type="f" corresp="#s8:l6">gheven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Dit lichaem <rhyme label="a" type="m">teer</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Datmen hier siet <rhyme label="b" type="f">schoffieren</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Dat sal de <rhyme label="a" type="m" corresp="#s9:l1">Heer</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Wederomme <rhyme label="b" type="f" corresp="#s9:l2">vercieren</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">En makent <rhyme label="c" type="m">ghelijck</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Den lichaem Christi <rhyme label="d" type="f">claerlijck</rhyme>,</l>
        <l id="s9:l7" met="2" type="-+">Om in zijn <rhyme label="c" type="m" corresp="#s9:l5">rijck</rhyme></l>
        <l id="s9:l8" met="3" type="-+">By hem te zijn <rhyme label="d" type="f" corresp="#s9:l6">eenpaerlijck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Dit recht <rhyme label="a" type="m">insiet</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Hoe Christus is <rhyme label="b" type="f">verresen</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">Want anders <rhyme label="a" type="m" corresp="#s10:l1">niet</rhyme></l>
        <l id="s10:l4" met="3" type="-+">En sal met ons oock <rhyme label="b" type="f" corresp="#s10:l2">wesen</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Dat selve <rhyme label="c" type="m">vleesch</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Dat aen 't cruys werdt <rhyme label="d" type="f">gheslaghen</rhyme>,</l>
        <l id="s10:l7" met="2" type="-+">Dat selve <rhyme label="c" type="m" corresp="#s10:l5">verrees</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Weder, na weynigh <rhyme label="d" type="f" corresp="#s10:l6">daghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Onder die <rhyme label="a" type="m">doo</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Is hy deerste <rhyme label="b" type="f">gheboren</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Wy sullen <rhyme label="a" type="m" corresp="#s11:l1">alsoo</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Verrijsen als hy is <rhyme label="b" type="f" corresp="#s11:l2">voren</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Want hy ist <rhyme label="c" type="m">hooft</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Van desen heylighen <rhyme label="d" type="f">Tempel</rhyme>,</l>
        <l id="s11:l7" met="2" type="-+">Voor diet <rhyme label="c" type="m" corresp="#s11:l5">ghelooft</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Is dit een recht <rhyme label="d" type="f" corresp="#s11:l6">exempel</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Broeders <rhyme label="a" type="m">vailliant</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Dit is in 't <rhyme label="b" type="f">concluderen</rhyme>,</l>
        <l id="s12:l3" met="2" type="-+">Mijn naeste <rhyme label="a" type="m" corresp="#s12:l1">verstant</rhyme></l>
        <l id="s12:l4" met="3" type="-+">(Sonder hoogher te <rhyme label="b" type="f" corresp="#s12:l2">studeren</rhyme>)</l>
        <l id="s12:l5" met="2" type="-+">Dit lijf in 't <rhyme label="c" type="m">slot</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Oneerlijck in 't <rhyme label="d" type="f">saeyen</rhyme>,</l>
        <l id="s12:l7" met="2" type="-+">Dat selve sal <rhyme label="c" type="m" corresp="#s12:l5">Godt</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Noch heerlijcken <rhyme label="d" type="f" corresp="#s12:l6">maeyen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
