    <melody>Chantons chantons mes frères</melody>
  <author>Js. M. Pfeil</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">o Ja, ik wil 't <rhyme label="a" type="f">gelooven</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijn kunst verdient <rhyme label="b" type="m">beklag</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En toch, ik laat mij <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Op uw geboorte <rhyme label="b" type="m" corresp="#s1:l2">dag</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Aanvaard, beminde <rhyme label="d" type="f">gastheer</rhyme>!</l>
        <l id="s1:l6" met="3" type="-+">Mijn reinen <rhyme label="e" type="m">zegengroet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hij is die van ons <rhyme label="f" type="f">allen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Bezield door èènen <rhyme label="e" type="m" corresp="#s1:l6">gloed</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'k Voorzeg u geen <rhyme label="a" type="f">vermêering</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van goud of <rhyme label="b" type="m">zilvergeld</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maar 't stroome u rijklijk <rhyme label="c" type="f">tegen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Zijt gij er op <rhyme label="b" type="m" corresp="#s2:l2">gesteld</rhyme>!</l>
        <l id="s2:l5" met="3" type="-+">Ik spel u ook geen <rhyme label="d" type="f">titels</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Geen riddermatig <rhyme label="e" type="m">slot</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Doch kan 't u vreugde <rhyme label="f" type="f">geven</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Verblij u in 't <rhyme label="e" type="m" corresp="#s2:l6">genot</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ik wensch u geen <rhyme label="a" type="f">bestendig</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Logis, op aarde <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dit ware <rhyme label="c" type="f">profaneeren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Het geen ik nimmer <rhyme label="b" type="m" corresp="#s3:l2">doe</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Maar welk een tal van <rhyme label="d" type="f">jaren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">U ook beschoren <rhyme label="e" type="m">zij</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Beleef ze vol <rhyme label="f" type="f">vernoegen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Van leed en droef heid <rhyme label="e" type="m" corresp="#s3:l6">vrij</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Verheuge u steeds mijn <rhyme label="a" type="f">vriendschap</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Ook de uwe schat ik <rhyme label="b" type="m">hoog</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat, waar de tijd aan <rhyme label="c" type="f">knage</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Zij nooit bezwijken <rhyme label="b" type="m" corresp="#s4:l2">moog'</rhyme>!</l>
        <l id="s4:l5" met="3" type="-+">En daar op <rhyme label="d" type="f">ingeschonken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Het glas tot aan den <rhyme label="e" type="m">rand</rhyme>!</l>
        <l id="s4:l7" met="3" type="-+">En reiken wij <rhyme label="f" type="f">elkander</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Opregt de <rhyme label="e" type="m" corresp="#s4:l6">vriendenhand</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
