  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn Man seer rijk en <rhyme label="a" type="f">vroome</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gelijk een <rhyme label="b" type="m">Koninghsken</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wanneer hy heeft <rhyme label="a" type="f" corresp="#s1:l1">vernoome</rhyme></l>
        <l id="s1:l4" met="3" type="-+">De blijde <rhyme label="b" type="m" corresp="#s1:l2">tijdingen</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dat Iesus van <rhyme label="a" type="f">Judeën</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Weerom afreysen <rhyme label="b" type="m">quam</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Na't Landt van <rhyme label="a" type="f" corresp="#s2:l1">Galileën</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met spoedt de reys <rhyme label="b" type="m" corresp="#s2:l2">aen-nam</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Badt met <rhyme label="a" type="f">ootmoedigheede</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O goede Iesu <rhyme label="b" type="m">kom</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ey lieve, gaet dogh <rhyme label="a" type="f" corresp="#s3:l1">meede</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Tot na <rhyme label="b" type="m" corresp="#s3:l2">Capharnaum</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mijn Soone die wil <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hy is op 't uyterst <rhyme label="b" type="m">krank</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ik magh hem geensins <rhyme label="a" type="f" corresp="#s4:l1">derven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ey beydt dogh niet te <rhyme label="b" type="m" corresp="#s4:l2">langk</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Iesus seydt <rhyme label="a" type="f">datelijken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ten sy dat gy-lie <rhyme label="b" type="m">siet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Miraculen klaer <rhyme label="a" type="f" corresp="#s5:l1">blijken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Soo en gelooft gy <rhyme label="b" type="m" corresp="#s5:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ik bid' u Jesu <rhyme label="a" type="f">goede</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Het is soo groten <rhyme label="b" type="m">noodt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Komt af met grooter <rhyme label="a" type="f" corresp="#s6:l1">spoede</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Eer dat mijn Soon is <rhyme label="b" type="m" corresp="#s6:l2">doodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En Jesus seyd' een <rhyme label="a" type="f">woorde</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Gaet, uw Soon leeft <rhyme label="b" type="m">gesondt</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Wanneer hy dat woordt <rhyme label="a" type="f" corresp="#s7:l1">hoorde</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Geloofd', en gingh <rhyme label="b" type="m" corresp="#s7:l2">terstont</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Terwijl hy gingh sijn <rhyme label="a" type="f">weegen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Soo quamen met 'er <rhyme label="b" type="m">spoedt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Sijn kneghten hem al <rhyme label="a" type="f" corresp="#s8:l1">teegen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En broghten tijdingh <rhyme label="b" type="m" corresp="#s8:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Uw' Soon is al <rhyme label="a" type="f">geneesen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Daerom soo weest <rhyme label="b" type="m">verblijt</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Hy vraeghden straks van <rhyme label="a" type="f" corresp="#s9:l1">deesen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Na d'uur, en na den <rhyme label="b" type="m" corresp="#s9:l2">tijdt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Al gisteren ten <rhyme label="a" type="f">seven</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">In eenen korten <rhyme label="b" type="m">stondt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Heeft hem de Koorts <rhyme label="a" type="f" corresp="#s10:l1">begeeven</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Hy worde straks <rhyme label="b" type="m" corresp="#s10:l2">gesondt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Dus kreegh den Vaêr <rhyme label="a" type="f">bescheyde</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Dat dit was d'uur en <rhyme label="b" type="m">stondt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Op welke Iesus <rhyme label="a" type="f" corresp="#s11:l1">seyde</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Gaet, uw' Soon is <rhyme label="b" type="m" corresp="#s11:l2">gesondt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Alsoo heeft hy <rhyme label="a" type="f">gekreegen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Sijns saligheyds <rhyme label="b" type="m">begin</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Geloofde voorts te <rhyme label="a" type="f" corresp="#s12:l1">deegen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Met al sijn <rhyme label="b" type="m" corresp="#s12:l2">Huysgesin</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">O Heer, wilt ons wat <rhyme label="a" type="f">sparen</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">En helpen in ons <rhyme label="b" type="m">noodt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Van siele-siekt <rhyme label="a" type="f" corresp="#s13:l1">bewaren</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Van onvoorsiene <rhyme label="b" type="m" corresp="#s13:l2">doodt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
