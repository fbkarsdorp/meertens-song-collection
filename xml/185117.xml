    <melody>Ik ging nog hedenmorgen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wie op het vleesche <rhyme label="a" type="f">saeyet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hy die <rhyme label="b" type="m">verderffenis</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Weer van den vleesche <rhyme label="a" type="f" corresp="#s1:l1">maeyet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Nae ‘s Schrifts <rhyme label="b" type="m" corresp="#s1:l2">ghetuyghenis</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Maer wie daer <rhyme label="c" type="f">saeyen</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Nae den <rhyme label="d" type="m">Gheest</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die sullen daer af <rhyme label="c" type="f" corresp="#s1:l5">maeyen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Het leven so men <rhyme label="d" type="m" corresp="#s1:l6">leest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wie in wel-lusten <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die sijn levendigh <rhyme label="b" type="m">doot</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer die wel-lust <rhyme label="a" type="f" corresp="#s2:l1">begheven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Comen in ‘s levens <rhyme label="b" type="m" corresp="#s2:l2">schoot</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Maer die <rhyme label="c" type="f">verkiesen</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Des werelts <rhyme label="d" type="m">vreught</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die sullen dan <rhyme label="c" type="f" corresp="#s2:l5">verliesen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Het Hemelsche <rhyme label="d" type="m" corresp="#s2:l6">gheneught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wie meer dees dinghen <rhyme label="a" type="f">achten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die op der aerden <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als die Hemelsche <rhyme label="a" type="f" corresp="#s3:l1">krachten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Sy verkiesen het <rhyme label="b" type="m" corresp="#s3:l2">schijn</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Voort ware <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Een <rhyme label="d" type="m">ydelheyt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Voor ‘t licht dat is <rhyme label="c" type="f" corresp="#s3:l5">gheresen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Donckere <rhyme label="d" type="m" corresp="#s3:l6">duysterheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wie Christus wet <rhyme label="a" type="f">begheven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En sijn heylsame <rhyme label="b" type="m">leer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En soecken weer te <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Nae ‘s werelts ydel <rhyme label="b" type="m" corresp="#s4:l2">eer</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Die gaen <rhyme label="c" type="f">begheven</rhyme></l>
        <l id="s4:l6" met="2" type="-+">‘s Levens <rhyme label="d" type="m">fonteyn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En graven daer <rhyme label="c" type="f" corresp="#s4:l5">beneven</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Slijck-putten seer <rhyme label="d" type="m" corresp="#s4:l6">onreyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wie leegheyt gaet <rhyme label="a" type="f">versmaden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En staet nae hoogheyts <rhyme label="b" type="m">faem</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En soeckt soo op te <rhyme label="a" type="f" corresp="#s5:l1">laden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Een werelts hooge <rhyme label="b" type="m" corresp="#s5:l2">naem</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">‘t Schijnt wat te <rhyme label="c" type="f">schynen</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Maer, laes! wat <rhyme label="d" type="m">ist</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Men siet het haest <rhyme label="c" type="f" corresp="#s5:l5">verdwynen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Ghelijck een roock of <rhyme label="d" type="m" corresp="#s5:l6">mist</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Daerom laet ons niet <rhyme label="a" type="f">wercken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Spyse die haest <rhyme label="b" type="m">verdrijft</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Maer wel, tot ons <rhyme label="a" type="f" corresp="#s6:l1">verstercken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Spyse die <rhyme label="b" type="m" corresp="#s6:l2">overblijft</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">In ‘t eeuwigh <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Soo Christus <rhyme label="d" type="m">seyt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Volstrecken soo met <rhyme label="c" type="f" corresp="#s6:l5">leven</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Ons zielen <rhyme label="d" type="m" corresp="#s6:l6">saligheyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O vrienden die Godt <rhyme label="a" type="f">minnen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En lust hebt aen zijn <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Laet ons doch soecken <rhyme label="a" type="f" corresp="#s7:l1">binnen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Te gaen door d’enghe <rhyme label="b" type="m" corresp="#s7:l2">poort</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Volghen ons <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Op ‘t smalle <rhyme label="d" type="m">pat</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die brenght ons dan soo <rhyme label="c" type="f" corresp="#s7:l5">veere</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Tot in d’Hemelsche <rhyme label="d" type="m" corresp="#s7:l6">stadt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Princelijck Godt <rhyme label="a" type="f">vercoren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wilt altijdt by ons <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Maeckt ons recht nieuw <rhyme label="a" type="f" corresp="#s8:l1">herboren</rhyme></l>
        <l id="s8:l4" met="3" type="-+">In waerheyt, niet in <rhyme label="b" type="m" corresp="#s8:l2">schijn</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Op dat wy <rhyme label="c" type="f">comen</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Voor u <rhyme label="d" type="m">ghenaed</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Hier nae by alle <rhyme label="c" type="f" corresp="#s8:l5">vromen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Daer ‘t nimmermeer <rhyme label="d" type="m" corresp="#s8:l6">vergaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
