<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186901</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody>Ach Phyllis lief mijn hartedief</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Goê Avond <rhyme label="a" type="m">Griet</rhyme>?</l>
        <l id="s1:l2" met="2" type="-+">Dat gy me <rhyme label="a" type="m" corresp="#s1:l1">ziet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Is nu voor 't laatste <rhyme label="b" type="f">reisje</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Schoon 'k u <rhyme label="c" type="m">bemin</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Myn <rhyme label="c" type="m" corresp="#s1:l4">Engelin</rhyme>!</l>
        <l id="s1:l6" met="3" type="-+">'k Moet van u scheiden, <rhyme label="b" type="f" corresp="#s1:l3">Meisje</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Gy hebt 't <rhyme label="a" type="m">gehoord</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Ik moet naar <rhyme label="a" type="m" corresp="#s2:l1">boord</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Ik kan niet langer <rhyme label="b" type="f">blyven</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Maar, wat is <rhyme label="c" type="m">dat</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Dat 'k niet <rhyme label="c" type="m" corresp="#s2:l4">bevat</rhyme>? ...</l>
        <l id="s2:l6" met="3" type="-+">De Meid begint te <rhyme label="b" type="f" corresp="#s2:l3">kyven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Hoe <rhyme label="a" type="m">Vryster-Buur</rhyme>!</l>
        <l id="s3:l2" met="2" type="-+">Kykt gy zo <rhyme label="a" type="m" corresp="#s3:l1">zuur</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Neen 'k zal u nooit <rhyme label="b" type="f">verlaaten</rhyme>:</l>
        <l id="s3:l4" met="2" type="-+">Ik Kom haast <rhyme label="c" type="m">weer</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Met Buit en <rhyme label="c" type="m" corresp="#s3:l4">Eer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dan zult gy anders <rhyme label="b" type="f" corresp="#s3:l3">praaten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Word ik uw <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Ik zeg, ik <rhyme label="a" type="m" corresp="#s4:l1">kan</rhyme></l>
        <l id="s4:l3" met="3" type="-+">U wis gelukkig <rhyme label="b" type="f">maaken</rhyme>;</l>
        <l id="s4:l4" met="2" type="-+">Ja, 'k maak van <rhyme label="c" type="m">jou</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Ligt een <rhyme label="c" type="m" corresp="#s4:l4">Mevrouw</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Al schynen 't wondre <rhyme label="b" type="f" corresp="#s4:l3">zaaken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Ik ben <rhyme label="a" type="m">Matroos</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">En word' ik <rhyme label="a" type="m" corresp="#s5:l1">boos</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">'k Zal als een Duivel <rhyme label="b" type="f">vechten</rhyme>;</l>
        <l id="s5:l4" met="2" type="-+">Hoe kookt <rhyme label="c" type="m">myn-bloed</rhyme>;</l>
        <l id="s5:l5" met="2" type="-+">Ik zwel van <rhyme label="c" type="m" corresp="#s5:l4">moed</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">Hoor Meid dat zyn de <rhyme label="b" type="f" corresp="#s5:l3">regten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Maar 'k zwyg nog <rhyme label="a" type="m">stil</rhyme>;</l>
        <l id="s6:l2" met="2" type="-+">Wyl ik eerst <rhyme label="a" type="m" corresp="#s6:l1">wil</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wie 'k ben, door daaden <rhyme label="b" type="f">toonen</rhyme>.</l>
        <l id="s6:l4" met="2" type="-+">Zo 'k my braaf <rhyme label="c" type="m">draag</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Daar door <rhyme label="c" type="m" corresp="#s6:l4">behaag</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Zie ik me ook wis <rhyme label="b" type="f" corresp="#s6:l3">beloonen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Ik kom dan <rhyme label="a" type="m">weêr</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Als een groot <rhyme label="a" type="m" corresp="#s7:l1">Heer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">'t Moet hiertoe Oorlog <rhyme label="b" type="f">weezen</rhyme>:</l>
        <l id="s7:l4" met="2" type="-+">Men weet doch <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Voor dat men 't <rhyme label="c" type="m" corresp="#s7:l4">ziet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Wiens moed kan zyn <rhyme label="b" type="f" corresp="#s7:l3">gepreezen</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">'t Was al geen <rhyme label="a" type="m">raar</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Voor hondert <rhyme label="a" type="m" corresp="#s8:l1">Jaar</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Tot Admiraal te <rhyme label="b" type="f">stygen</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Van slegt <rhyme label="c" type="m">Matroos</rhyme>;</l>
        <l id="s8:l5" met="2" type="-+">En ik wierd <rhyme label="c" type="m" corresp="#s8:l4">boos</rhyme>;</l>
        <l id="s8:l6" met="3" type="-+">Kon men nu 't ook niet <rhyme label="b" type="f" corresp="#s8:l3">krygen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Want Hollandsch <rhyme label="a" type="m">Leeuw</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">Heeft in deez' <rhyme label="a" type="m" corresp="#s9:l1">Eeuw</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Geen minder moed noch <rhyme label="b" type="f">krachten</rhyme>.</l>
        <l id="s9:l4" met="2" type="-+">Van 't Zeevolk <rhyme label="c" type="m">weêr</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Kunt ge, als <rhyme label="c" type="m" corresp="#s9:l4">wel-eêr</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Tromps en de Ruyters <rhyme label="b" type="f" corresp="#s9:l3">wachten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Captyns vol <rhyme label="a" type="m">moed</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">Hebben we ook <rhyme label="a" type="m" corresp="#s10:l1">goed</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">'k Noem hun maer niet by <rhyme label="b" type="f">naamen</rhyme>.</l>
        <l id="s10:l4" met="2" type="-+">Hun <rhyme label="c" type="m">Krygsbeleid</rhyme></l>
        <l id="s10:l5" met="2" type="-+">En <rhyme label="c" type="m" corresp="#s10:l4">Dapperheid</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Zal de Ouden zelfs <rhyme label="b" type="f" corresp="#s10:l3">beschaamen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Kom lieve <rhyme label="a" type="m">Meid</rhyme>!</l>
        <l id="s11:l2" met="2" type="-+">Nu tot <rhyme label="a" type="m" corresp="#s11:l1">affscheid</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Een Kussie my <rhyme label="b" type="f">gegeven</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+">Och mogt gy <rhyme label="c" type="m">meê</rhyme>!</l>
        <l id="s11:l5" met="2" type="-+">Ik moet naar <rhyme label="c" type="m" corresp="#s11:l4">Zee</rhyme>:</l>
        <l id="s11:l6" met="3" type="-+">'t Is toch een prettig <rhyme label="b" type="f" corresp="#s11:l3">Leven</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
