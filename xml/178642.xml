    <tags/>
    <melody>Psalm 038 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LAat uw straffe op my niet <rhyme label="a" type="f">blaaken</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Noch my <rhyme label="a" type="f" corresp="#s1:l1">naaken</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Heer, in uw <rhyme label="b" type="m">verbolgentheit</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Matig toch myn smarte in 't <rhyme label="c" type="f">lyden</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">En 't <rhyme label="c" type="f" corresp="#s1:l4">kastyden</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Datge in grimmigheit <rhyme label="b" type="m" corresp="#s1:l3">bereidt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want uw scherpe pylen <rhyme label="a" type="f">klieven</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s2:l1">doorgrieven</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Myn gebeente en <rhyme label="b" type="m">ingewandt</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">'k Ben benaaut en zeer <rhyme label="c" type="f">beneepen</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s2:l4">Aangegreepen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Van uw wraak en slaande <rhyme label="b" type="m" corresp="#s2:l3">handt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Daar wordt niet geheels <rhyme label="a" type="f">gevonden</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">(Door myn <rhyme label="a" type="f" corresp="#s3:l1">zonden</rhyme>)</l>
        <l id="s3:l3" met="4" type="+-">In myn vleesch. uw gramschap <rhyme label="b" type="m">gloeit</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">'k Vind geen ruste in myne <rhyme label="c" type="f">beenen</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">D'oogen <rhyme label="c" type="f" corresp="#s3:l4">weenen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Omdat steedts myn lyden <rhyme label="b" type="m" corresp="#s3:l3">groeit</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want myne <rhyme label="a" type="f">ongerechtigheden</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Booze <rhyme label="a" type="f" corresp="#s4:l1">zeden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Gaan my verre boven 't <rhyme label="b" type="m">hoofdt</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Ik kan haren last niet <rhyme label="c" type="f">draagen</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Door uw <rhyme label="c" type="f" corresp="#s4:l4">slagen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En 't gewigt van kracht <rhyme label="b" type="m" corresp="#s4:l3">berooft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">'k Ben vol stinkende <rhyme label="a" type="f">etterbuilen</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Die <rhyme label="a" type="f" corresp="#s5:l1">vervuilen</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">En verzweeren door 't <rhyme label="b" type="m">gezwel</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Wegens myne dwaaze <rhyme label="c" type="f">daaden</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Quaade <rhyme label="c" type="f" corresp="#s5:l4">zaaden</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Strydende met uw <rhyme label="b" type="m" corresp="#s5:l3">bevel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'k Ben gekromt en <rhyme label="a" type="f">neêrgebogen</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Als <rhyme label="a" type="f" corresp="#s6:l1">onttogen</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Van myn lyfsgestalte en <rhyme label="b" type="m">kracht</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">'k Moet van droefheit gansche <rhyme label="c" type="f">dagen</rhyme></l>
        <l id="s6:l5" met="2" type="+-">'t Roukleedt <rhyme label="c" type="f" corresp="#s6:l4">draagen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Zoodat myne ziel <rhyme label="b" type="m" corresp="#s6:l3">versmagt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Want de brandt verteert myn <rhyme label="a" type="f">dermen</rhyme>;</l>
        <l id="s7:l2" met="2" type="+-">Door myn <rhyme label="a" type="f" corresp="#s7:l1">kermen</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Slyt myn ooge en 't zwakke <rhyme label="b" type="m">lyf</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">In myn vleesch is ziel noch <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s7:l5" met="2" type="+-">Meer <rhyme label="c" type="f" corresp="#s7:l4">gebleven</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Al myn leên staan dootsch en <rhyme label="b" type="m" corresp="#s7:l3">styf</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'k Ben verzwakt en als <rhyme label="a" type="f">gebroken</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">'k Zit <rhyme label="a" type="f" corresp="#s8:l1">gedoken</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Gansch verbryzelt, in <rhyme label="b" type="m">elendt</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">'k Brulle van 't geruisch myns <rhyme label="c" type="f">harten</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">En myn <rhyme label="c" type="f" corresp="#s8:l4">smarten</rhyme>;</l>
        <l id="s8:l6" met="4" type="+-">Opdat gy u tot my <rhyme label="b" type="m" corresp="#s8:l3">wendt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Heer, die kent myn wensch en <rhyme label="a" type="f">klagten</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Koom <rhyme label="a" type="f" corresp="#s9:l1">verzagten</rhyme></l>
        <l id="s9:l3" met="4" type="+-">'t Bitter lyden dat ik <rhyme label="b" type="m">draag</rhyme>.</l>
        <l id="s9:l4" met="4" type="+-">Gy kent myn gebeên en <rhyme label="c" type="f">zugten</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">En de <rhyme label="c" type="f" corresp="#s9:l4">vruchten</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Van myn quaale en zwaare <rhyme label="b" type="m" corresp="#s9:l3">plaag</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">'t Hart keert in my om van <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Kracht en <rhyme label="a" type="f" corresp="#s10:l1">zinnen</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">Hebben my verlaaten; <rhyme label="b" type="m">ook</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Is het licht zelf van myne <rhyme label="c" type="f">oogen</rhyme></l>
        <l id="s10:l5" met="2" type="+-">My <rhyme label="c" type="f" corresp="#s10:l4">ontvloden</rhyme>:</l>
        <l id="s10:l6" met="4" type="+-">'k Ben verdroogt als door den <rhyme label="b" type="m" corresp="#s10:l3">rook</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">'k Wordt van ydereen <rhyme label="a" type="f">verlaaten</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">Op de <rhyme label="a" type="f" corresp="#s11:l1">straaten</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Staan myn vrienden van myn <rhyme label="b" type="m">huis</rhyme>.</l>
        <l id="s11:l4" met="4" type="+-">Myn bestaanden zyn <rhyme label="c" type="f">verlegen</rhyme>,</l>
        <l id="s11:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s11:l4">Neêrgezegen</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Door myn leet en bitter <rhyme label="b" type="m" corresp="#s11:l3">kruis</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Zy, die op myn ziele <rhyme label="a" type="f">mikken</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">Leggen <rhyme label="a" type="f" corresp="#s12:l1">strikken</rhyme></l>
        <l id="s12:l3" met="4" type="+-">Opdat ik geraake in 't <rhyme label="b" type="m">leet</rhyme>.</l>
        <l id="s12:l4" met="4" type="+-">'k Zie hen die myn lyden <rhyme label="c" type="f">zoeken</rhyme>,</l>
        <l id="s12:l5" met="2" type="+-">Zich <rhyme label="c" type="f" corresp="#s12:l4">verkloeken</rhyme></l>
        <l id="s12:l6" met="4" type="+-">In 't bederf, voor my <rhyme label="b" type="m" corresp="#s12:l3">gesmeedt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Zy bedenken looze <rhyme label="a" type="f">streeken</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">Om te <rhyme label="a" type="f" corresp="#s13:l1">steeken</rhyme>:</l>
        <l id="s13:l3" met="4" type="+-">Maar ik houde my als <rhyme label="b" type="m">doof</rhyme>.</l>
        <l id="s13:l4" met="4" type="+-">'k Ben als stom en wil niet <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-">Alsze in <rhyme label="c" type="f" corresp="#s13:l4">tooren</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">My beloeren tot hun' <rhyme label="b" type="m" corresp="#s13:l3">roof</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">'k Houde mynen mondt <rhyme label="a" type="f">gesloten</rhyme>,</l>
        <l id="s14:l2" met="2" type="+-">By 't <rhyme label="a" type="f" corresp="#s14:l1">vergrooten</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Van hun smaalen op myn <rhyme label="b" type="m">quaadt</rhyme>.</l>
        <l id="s14:l4" met="4" type="+-">'k Hebbe als geene <rhyme label="c" type="f">tegenreden</rhyme>,</l>
        <l id="s14:l5" met="2" type="+-">Alsze <rhyme label="c" type="f" corresp="#s14:l4">ontleeden</rhyme></l>
        <l id="s14:l6" met="4" type="+-">Hoe uw handt my drukt en <rhyme label="b" type="m" corresp="#s14:l3">slaat</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Want myn hoope en <rhyme label="a" type="f">zielsbetrouwen</rhyme></l>
        <l id="s15:l2" met="2" type="+-">Zal ik <rhyme label="a" type="f" corresp="#s15:l1">bouwen</rhyme></l>
        <l id="s15:l3" met="4" type="+-">Op uw goedheit, magtig <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s15:l4" met="4" type="+-">Gy verhoort my naar myn <rhyme label="c" type="f">beeden</rhyme>;</l>
        <l id="s15:l5" met="2" type="+-">Dekt myn <rhyme label="c" type="f" corresp="#s15:l4">leden</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Voor des vyandts <rhyme label="b" type="m" corresp="#s15:l3">moordgeweer</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Dat zy zich toch in myn <rhyme label="a" type="f">lyden</rhyme></l>
        <l id="s16:l2" met="2" type="+-">Niet <rhyme label="a" type="f" corresp="#s16:l1">verblyden</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Zeide ik; want wanneer myn <rhyme label="b" type="m">voet</rhyme></l>
        <l id="s16:l4" met="4" type="+-">Zoude wanklen, rees hun <rhyme label="c" type="f">grootheit</rhyme>,</l>
        <l id="s16:l5" met="2" type="+-">En hun <rhyme label="c" type="f" corresp="#s16:l4">snoodheit</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Tegen my, door 't boos <rhyme label="b" type="m" corresp="#s16:l3">gemoedt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Want ik ben gereedt tot <rhyme label="a" type="f">hinken</rhyme>:</l>
        <l id="s17:l2" met="2" type="+-">'k Moet <rhyme label="a" type="f" corresp="#s17:l1">verzinken</rhyme></l>
        <l id="s17:l3" met="4" type="+-">In den grondeloozen <rhyme label="b" type="m">put</rhyme></l>
        <l id="s17:l4" met="4" type="+-">Van dees' rampen. ja myn <rhyme label="c" type="f">harte</rhyme></l>
        <l id="s17:l5" met="2" type="+-">Breekt door <rhyme label="c" type="f" corresp="#s17:l4">smarte</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">Zoo gy my niet <rhyme label="b" type="m" corresp="#s17:l3">onderstut</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Want myne <rhyme label="a" type="f">ongerechtigheden</rhyme>,</l>
        <l id="s18:l2" met="2" type="+-">U <rhyme label="a" type="f" corresp="#s18:l1">beleden</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Maake ik u nu weêr <rhyme label="b" type="m">bekent</rhyme>.</l>
        <l id="s18:l4" met="4" type="+-">'k Ben bekommert en <rhyme label="c" type="f">verlegen</rhyme>,</l>
        <l id="s18:l5" met="2" type="+-">In het <rhyme label="c" type="f" corresp="#s18:l4">weegen</rhyme></l>
        <l id="s18:l6" met="4" type="+-">Van myn zonde en zwaare <rhyme label="b" type="m" corresp="#s18:l3">elendt</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Maar myn haters groeien <rhyme label="a" type="f">krachtig</rhyme>,</l>
        <l id="s19:l2" met="2" type="+-">Worden <rhyme label="a" type="f" corresp="#s19:l1">magtig</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">'k Voel myns vyandts fellen <rhyme label="b" type="m">haat</rhyme>,</l>
        <l id="s19:l4" met="4" type="+-">Zonder oorzaak <rhyme label="c" type="f">opgenoomen</rhyme>,</l>
        <l id="s19:l5" met="2" type="+-">Niet te <rhyme label="c" type="f" corresp="#s19:l4">toomen</rhyme>:</l>
        <l id="s19:l6" met="4" type="+-">Hy vergroot in eere en <rhyme label="b" type="m" corresp="#s19:l3">staat</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Die my quaadt voor goedt <rhyme label="a" type="f">beloonen</rhyme>,</l>
        <l id="s20:l2" met="2" type="+-">En my <rhyme label="a" type="f" corresp="#s20:l1">hoonen</rhyme>,</l>
        <l id="s20:l3" met="4" type="+-">Staan my tegen; omdat <rhyme label="b" type="m">ik</rhyme></l>
        <l id="s20:l4" met="4" type="+-">Dagelyks naar 't goede <rhyme label="c" type="f">jaage</rhyme>,</l>
        <l id="s20:l5" met="2" type="+-">En my <rhyme label="c" type="f" corresp="#s20:l4">draage</rhyme></l>
        <l id="s20:l6" met="4" type="+-">Dat geen onrecht my <rhyme label="b" type="m" corresp="#s20:l3">verstrik'</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Laat uw hulp my niet <rhyme label="a" type="f">begeeven</rhyme>,</l>
        <l id="s21:l2" met="2" type="+-">Doet my <rhyme label="a" type="f" corresp="#s21:l1">leeven</rhyme>,</l>
        <l id="s21:l3" met="4" type="+-">Och ! verlaat my nooit, ô <rhyme label="b" type="m">Heer</rhyme> !</l>
        <l id="s21:l4" met="4" type="+-">Wees, myn Godt, van my niet <rhyme label="c" type="f">verre</rhyme>.</l>
        <l id="s21:l5" met="2" type="+-">Als een <rhyme label="c" type="f" corresp="#s21:l4">sterre</rhyme></l>
        <l id="s21:l6" met="4" type="+-">Straale uw aanschyn op my <rhyme label="b" type="m" corresp="#s21:l3">neêr</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Haast u, Heer, om my te <rhyme label="a" type="f">vryden</rhyme>,</l>
        <l id="s22:l2" met="2" type="+-">Uit dit <rhyme label="a" type="f" corresp="#s22:l1">lyden</rhyme>;</l>
        <l id="s22:l3" met="4" type="+-">Toon my uwe hulpe en <rhyme label="b" type="m">kracht</rhyme>.</l>
        <l id="s22:l4" met="4" type="+-">Heer, myn heil, myn troost, myn <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s22:l5" met="2" type="+-">Koom my <rhyme label="c" type="f" corresp="#s22:l4">geeven</rhyme></l>
        <l id="s22:l6" met="4" type="+-">'t Geen myn ziel van u <rhyme label="b" type="m" corresp="#s22:l3">verwacht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
