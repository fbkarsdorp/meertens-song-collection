    <melody>Gott der vater wohn uns bei</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Godt den Vader woent ons <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ende laet ons niet <rhyme label="b" type="f">verderuen</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Maect ons van allen sonden <rhyme label="a" type="m" corresp="#s1:l1">vry</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ende helpt ons salich <rhyme label="b" type="f" corresp="#s1:l2">steruen</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Voor den duyuel ons <rhyme label="c" type="m">bewaert</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hout ons by vasten <rhyme label="d" type="f">vertrouwen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Dat wy vry en <rhyme label="c" type="m" corresp="#s1:l5">onbeswaert</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Van herten gront op u <rhyme label="d" type="f" corresp="#s1:l6">bouwen</rhyme>:</l>
        <l id="s1:l9" met="4" type="+-">Helpt ons oock hier gantsch en <rhyme label="e" type="m">gaer</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Met allen rechten <rhyme label="f" type="f">Christen</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Ontulieden het sduyuels <rhyme label="f" type="f" corresp="#s1:l10">twisten</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Met Godes wapen en <rhyme label="f" type="f" corresp="#s1:l10">listen</rhyme>.</l>
        <l id="s1:l13" met="4" type="+-">Amen, Amen, dat sy <rhyme label="e" type="m" corresp="#s1:l9">waer</rhyme>,</l>
        <l id="s1:l14" met="4" type="+-">Dies singen wy, Alleluya, <rhyme label="e" type="m" corresp="#s1:l9">claer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ihesu Christe ons bede <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Leyt ons op rechte <rhyme label="b" type="f">straten</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Want ghy zijt des Vaders <rhyme label="a" type="m" corresp="#s2:l1">woort</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Daer wy ons op <rhyme label="b" type="f" corresp="#s2:l2">verlaten</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Door dijn doot ghy ons <rhyme label="c" type="m">verwerft</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Een eewich rijcke <rhyme label="d" type="f">verheuen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Ghy zijt tleuen dat niet meer <rhyme label="c" type="m" corresp="#s2:l5">sterft</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Een licht van Godt ons <rhyme label="d" type="f" corresp="#s2:l6">ghegheuen</rhyme>:</l>
        <l id="s2:l9" met="4" type="+-">Ghy zijt oock ons Hemels <rhyme label="e" type="m">broot</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Gherechticheyt en <rhyme label="f" type="f">wijsheyt</rhyme>:</l>
        <l id="s2:l11" met="3" type="+-">Ghy zijt dat hooft der Christenheyt <rhyme label="f" type="f" corresp="#s2:l10">groot</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Den wech, den peys, en die <rhyme label="f" type="f" corresp="#s2:l10">waerheyt</rhyme>,</l>
        <l id="s2:l13" met="4" type="+-">Van Maria gheboren <rhyme label="e" type="m" corresp="#s2:l9">reyn</rhyme>,</l>
        <l id="s2:l14" met="4" type="+-">Jhesu Christe gheloeft <rhyme label="e" type="m" corresp="#s2:l9">alleyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Heylighe Gheest derde <rhyme label="a" type="m">Persoon</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Der Godheyt sonder <rhyme label="b" type="f">verkeeren</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Met den Vader en Sone <rhyme label="a" type="m" corresp="#s3:l1">schoon</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wilt ons ghelooue <rhyme label="b" type="f" corresp="#s3:l2">vermeeren</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Christus dy ons verworuen <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Door zijnen doot by den <rhyme label="d" type="f">Vader</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">U schijn ons der ghenaden <rhyme label="c" type="m" corresp="#s3:l5">gheeft</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">So sal ons twoort zijn <rhyme label="d" type="f" corresp="#s3:l6">nader</rhyme>:</l>
        <l id="s3:l9" met="4" type="+-">Helpt dat hem tot Christum <rhyme label="e" type="m">soet</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Die arme menschen <rhyme label="f" type="f">wenden</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Van Christo ghy ghetuyghet <rhyme label="f" type="f" corresp="#s3:l10">goet</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">En Sathan cont ghy <rhyme label="f" type="f" corresp="#s3:l10">schenden</rhyme>,</l>
        <l id="s3:l13" met="4" type="+-">Alleluya singhen <rhyme label="e" type="m" corresp="#s3:l9">wy</rhyme>,</l>
        <l id="s3:l14" met="4" type="+-">Helpt ons o heylighe Gheest tot <rhyme label="e" type="m" corresp="#s3:l9">dy</rhyme>.</l>
      </lg>
    </lg>
  </text>
