  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Godtsaligh sal hy <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die arm van geeste <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want 't Hemelrijk aen <rhyme label="a" type="f" corresp="#s1:l1">deesen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Al toe-behoort <rhyme label="b" type="m" corresp="#s1:l2">gewis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ook saligh sijn die <rhyme label="a" type="f">menschen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die saght sijn van <rhyme label="b" type="m">gemoet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sy sullen na haer <rhyme label="a" type="f" corresp="#s2:l1">wenschen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Besitten d'Aerde <rhyme label="b" type="m" corresp="#s2:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sy mogen saligh <rhyme label="a" type="f">hieten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die sijn in druk en <rhyme label="b" type="m">rouw</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sy sullen troost <rhyme label="a" type="f" corresp="#s3:l1">genieten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van Godt den Heere <rhyme label="b" type="m" corresp="#s3:l2">trouw</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die seer na recht <rhyme label="a" type="f">verlangen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sijn saligh in haer <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sy sullen wel <rhyme label="a" type="f" corresp="#s4:l1">ontfangen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En werden heel <rhyme label="b" type="m" corresp="#s4:l2">versaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die mee-lijdt met sijn <rhyme label="a" type="f">naesten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Is ook in <rhyme label="b" type="m">saligheyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Want voor hem sal ten <rhyme label="a" type="f" corresp="#s5:l1">laetsten</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Genade sijn <rhyme label="b" type="m" corresp="#s5:l2">bereyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die 't harte suyver <rhyme label="a" type="f">houwen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sijn saligh al <rhyme label="b" type="m">gelijk</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Sy sullen Godt <rhyme label="a" type="f" corresp="#s6:l1">aenschouwen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In 't eeuwigh <rhyme label="b" type="m" corresp="#s6:l2">Heemelrijk</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En saligh is hy <rhyme label="a" type="f">meede</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die t'allen tijdt <rhyme label="b" type="m">bemindt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">De deughdelijke <rhyme label="a" type="f" corresp="#s7:l1">vreede</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Die sal sijn Goodes <rhyme label="b" type="m" corresp="#s7:l2">Kindt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die om <rhyme label="a" type="f">gereghtigheede</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Veel lijdt, ook saligh <rhyme label="b" type="m">is</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Want hem behoort <rhyme label="a" type="f" corresp="#s8:l1">alreede</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Het Hemelrijke <rhyme label="b" type="m" corresp="#s8:l2">wis</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Godtsaligh sijt gy <rhyme label="a" type="f">t'samen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Wanneer gy wordt <rhyme label="b" type="m">gehaet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Wanneer sy uwe <rhyme label="a" type="f" corresp="#s9:l1">namen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Uyt doen, gelijk als <rhyme label="b" type="m" corresp="#s9:l2">quaet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wanneer sy als <rhyme label="a" type="f">verbolgen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">U toonen alle <rhyme label="b" type="m">spijt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Om mijnens wil <rhyme label="a" type="f" corresp="#s10:l1">vervolgen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">U aendoen vals <rhyme label="b" type="m" corresp="#s10:l2">verwijt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Als ghy dees <rhyme label="a" type="f">swarigheede</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Om mijnen name <rhyme label="b" type="m">lijdt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Is in den Hemel <rhyme label="a" type="f" corresp="#s11:l1">reede</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Uw' loon, dus weest <rhyme label="b" type="m" corresp="#s11:l2">verblijdt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Sy d'Heylige <rhyme label="a" type="f">Propheten</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Alsoo hebben <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Haer Vaderen te <rhyme label="a" type="f" corresp="#s12:l1">weeten</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Die haer sijn <rhyme label="b" type="m" corresp="#s12:l2">voor-gegaen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Maer wee sy u gy <rhyme label="a" type="f">Rijken</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Wee die hier sijt <rhyme label="b" type="m">versaet</rhyme>;</l>
        <l id="s13:l3" met="3" type="-+">Want u-lie al <rhyme label="a" type="f" corresp="#s13:l1">gelijken</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Te waghten honger <rhyme label="b" type="m" corresp="#s13:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">En wee moet gy <rhyme label="a" type="f">verbeyden</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Die hier in weelde <rhyme label="b" type="m">laght</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Want gy-lie sult nogh <rhyme label="a" type="f" corresp="#s14:l1">schreyden</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">En weenen met <rhyme label="b" type="m" corresp="#s14:l2">beklaght</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Als gy van menschen <rhyme label="a" type="f">meede</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Lof krijght, wee op uw <rhyme label="b" type="m">hals</rhyme>;</l>
        <l id="s15:l3" met="3" type="-+">Want sy ook alsoo <rhyme label="a" type="f" corresp="#s15:l1">deede</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Aen de Propheeten <rhyme label="b" type="m" corresp="#s15:l2">vals</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
