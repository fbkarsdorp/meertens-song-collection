    <melody>Alle vogeltjes gemeen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Swaerlijck can hem hier <rhyme label="a" type="m">verhoeden</rhyme>//</l>
        <l id="s1:l2" met="4" type="-+">een coopman voor het <rhyme label="b" type="m">onrecht</rhyme>/</l>
        <l id="s1:l3" met="4" type="-+">En een cremer van veel <rhyme label="a" type="m" corresp="#s1:l1">goeden</rhyme>//</l>
        <l id="s1:l4" met="4" type="-+">daer is sonde in <rhyme label="b" type="m" corresp="#s1:l2">ghehecht</rhyme>//</l>
        <l id="s1:l5" met="4" type="-+">want om goets wille hoe <rhyme label="b" type="m" corresp="#s1:l2">slecht</rhyme></l>
        <l id="s1:l6" met="4" type="-+">doet bedroch de heer en <rhyme label="b" type="m" corresp="#s1:l2">knecht</rhyme>//</l>
        <l id="s1:l7" met="4" type="+-">Soo den naghel inden <rhyme label="c" type="m">muer</rhyme>//</l>
        <l id="s1:l8" met="4" type="+-">tusschen steenen diep in <rhyme label="d" type="m">steect</rhyme>//</l>
        <l id="s1:l9" met="4" type="+-">soo steect sonde t'elcker <rhyme label="c" type="m" corresp="#s1:l7">uer</rhyme>//</l>
        <l id="s1:l10" met="4" type="-+">in coopmans daermen lueghen <rhyme label="d" type="m" corresp="#s1:l8">spreect</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Blijft hy niet met <rhyme label="a" type="m">neersticheyt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">In Gods vrees, en hem dient <rhyme label="b" type="m">alleyn</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sijn huys verstroyt, quae saem <rhyme label="a" type="m" corresp="#s2:l1">verspreyt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Sijn groote goet dat wort haest <rhyme label="b" type="m" corresp="#s2:l2">cleyn</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Seeftmen so blijft het <rhyme label="b" type="m" corresp="#s2:l2">onreyn</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Op de seue int <rhyme label="b" type="m" corresp="#s2:l2">ghemeyn</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Soo wat ooc de mensch <rhyme label="c" type="m">aentast</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Wat onreyns daer van <rhyme label="d" type="m">aencleeft</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Daerom coopman altijt <rhyme label="c" type="m" corresp="#s2:l7">past</rhyme></l>
        <l id="s2:l10" met="4" type="-+">Dat ghy in als godtvruchtich <rhyme label="d" type="m" corresp="#s2:l8">leeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Soo den ouen hier <rhyme label="a" type="m">beproeft</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Den nieuwen pot die daer is <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soo proeft hier oock t'gheen dat <rhyme label="a" type="m" corresp="#s3:l1">bedroeft</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Des menschen herten ende <rhyme label="b" type="m" corresp="#s3:l2">sin</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Een vrucht toont v int <rhyme label="b" type="m" corresp="#s3:l2">ontghin</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Wat den boom gheeft veur <rhyme label="b" type="m" corresp="#s3:l2">ghewin</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Soo coemt deur de reden <rhyme label="c" type="m">voort</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Hoe het hert gheschict is: <rhyme label="d" type="m">dan</rhyme></l>
        <l id="s3:l9" met="4" type="+-">Prijst niet eer ghy spreken <rhyme label="c" type="m" corresp="#s3:l7">hoort</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Want reden die wijst v den <rhyme label="d" type="m" corresp="#s3:l8">man</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Volght ghy rechtuaerdicheyt <rhyme label="a" type="m">na</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ghy crijghtse des vry seker <rhyme label="b" type="m">sijt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En sultse trecken aen seer <rhyme label="a" type="m" corresp="#s4:l1">dra</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Ghelijck een seer costelijck <rhyme label="b" type="m" corresp="#s4:l2">habijt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Voghelkens inder lucht <rhyme label="b" type="m" corresp="#s4:l2">wijt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Voeghen haer met grooter <rhyme label="b" type="m" corresp="#s4:l2">vlijt</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Hier altijt by huers <rhyme label="c" type="m">ghelijck</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Soo ist met de waerheyt <rhyme label="d" type="m">eenpaer</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Selden neemtse van v <rhyme label="c" type="m" corresp="#s4:l7">wijck</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">In ghy haer gheeft ghehoor <rhyme label="d" type="m" corresp="#s4:l8">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Soo den leeuw op den roof <rhyme label="a" type="m">loert</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Soo grijpt de sondt quaetdoenders <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die Godt vreest spreect noch en <rhyme label="a" type="m" corresp="#s5:l1">roert</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Dan heylsaemheyt: dits wel <rhyme label="b" type="m" corresp="#s5:l2">ghedaen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Maer een dwaes verandert <rhyme label="b" type="m" corresp="#s5:l2">saen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Hy ghelijct seer wel de <rhyme label="b" type="m" corresp="#s5:l2">Maen</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Als ghy by dwaes volck <rhyme label="c" type="m">vergaert</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Merct wel wat tijt lijden <rhyme label="d" type="m">wil</rhyme>,</l>
        <l id="s5:l9" met="4" type="+-">Onder wijse vry voort <rhyme label="c" type="m" corresp="#s5:l7">vaert</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Daer en dient niet ghesweghen <rhyme label="d" type="m" corresp="#s5:l8">stil</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
