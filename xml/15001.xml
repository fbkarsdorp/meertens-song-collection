  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Al wat den mensch <rhyme label="a" type="f">bejegent</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ist ongeval of <rhyme label="b" type="m">druck</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Welvaren voorspoet of <rhyme label="b" type="m" corresp="#s1:l2">geluck</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">'tWort all' van God <rhyme label="a" type="f" corresp="#s1:l1">gesegent</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ist bitter, suer, of <rhyme label="c" type="m">soet</rhyme>,,</l>
        <l id="s1:l6" met="4" type="+-">God 'tal 'tonsen besten <rhyme label="c" type="m" corresp="#s1:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy neemt in zijn <rhyme label="a" type="f">bewaring'</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die, die hy heeft <rhyme label="b" type="m">besind</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Als een vader liefd' syn <rhyme label="b" type="m" corresp="#s2:l2">kind</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Haer lasten en <rhyme label="a" type="f" corresp="#s2:l1">beswaering'</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Benoutheyt, en noch <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Doet hy weg tot synder <rhyme label="c" type="m" corresp="#s2:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De boos' hoe dat sy <rhyme label="a" type="f">schuymen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van quaetheyt over <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sullen komen toch ten <rhyme label="b" type="m" corresp="#s3:l2">val</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">De bane moeten <rhyme label="a" type="f" corresp="#s3:l1">ruymen</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">En die nu word <rhyme label="c" type="m">gequelt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Sal behouden noch het <rhyme label="c" type="m" corresp="#s3:l5">velt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dat maer geloof en <rhyme label="a" type="f">hope</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Gegront sy op den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dat in noot oock even <rhyme label="b" type="m" corresp="#s4:l2">seer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Een yder tot hem <rhyme label="a" type="f" corresp="#s4:l1">lope</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">So sal al uwen <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Haest verkeeren tot <rhyme label="c" type="m" corresp="#s4:l5">geluck</rhyme>.</l>
      </lg>
    </lg>
  </text>
