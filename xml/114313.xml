    <melody>Pots honderdduizend slapperment</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SChoon dat ik zucht by Dag en <rhyme label="a" type="m">Nacht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En als ik by u <rhyme label="b" type="m">ben</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Stort in uw schoot myn droeve <rhyme label="a" type="m" corresp="#s1:l1">klacht</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Waer uyt dat gy ligt <rhyme label="b" type="m" corresp="#s1:l2">ken</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Bespeuren lief, dat ik u <rhyme label="c" type="m">Min</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En noit verlaten <rhyme label="d" type="m">zal</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Als ik maer eens uw stuurse <rhyme label="c" type="m" corresp="#s1:l5">zin</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Mag brengen tot den <rhyme label="d" type="m" corresp="#s1:l6">val</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'t Is waer ik heb u lang <rhyme label="a" type="m">gevryt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En dat met grote <rhyme label="b" type="m">zin</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om dat gy de allerschoonste <rhyme label="a" type="m" corresp="#s2:l1">zyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die ik ter Wereld <rhyme label="b" type="m" corresp="#s2:l2">min</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Maer al 't geklag, dat ik uw <rhyme label="c" type="m">doe</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Slaet gy maer in den <rhyme label="d" type="m">wind</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">En denkt niet hoe ik ben te <rhyme label="c" type="m" corresp="#s2:l5">moe</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Myn alderliefste <rhyme label="d" type="m" corresp="#s2:l6">kind</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer zeg eens, overschone <rhyme label="a" type="m">Meidt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Waerom dat gy zo <rhyme label="b" type="m">trots</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Op myn verzoek, zo spytig <rhyme label="a" type="m" corresp="#s3:l1">zyt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En antwoord my zo <rhyme label="b" type="m" corresp="#s3:l2">schots</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Of is 't misschien om dat uw <rhyme label="c" type="m">geld</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wat groter is als 't <rhyme label="d" type="m">myn</rhyme>?</l>
        <l id="s3:l7" met="4" type="-+">Ik ga Vrindinne, niet <rhyme label="c" type="m" corresp="#s3:l5">ontsteld</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En zal u Dienaer <rhyme label="d" type="m" corresp="#s3:l6">zyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schoon dat ik door myn <rhyme label="a" type="m">vryery</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Op uw niets winnen <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En gy, my zo laet in de <rhyme label="a" type="m" corresp="#s4:l1">ly</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daer ik was graeg uw <rhyme label="b" type="m" corresp="#s4:l2">Man</rhyme>;</l>
        <l id="s4:l5" met="4" type="-+">Maer 't is geen noot Patientie <rhyme label="c" type="m">dan</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">'k Zeg uw adieu, voor 't <rhyme label="d" type="m">lest</rhyme>;</l>
        <l id="s4:l7" met="4" type="-+">Ei! ziet eens of gy beter <rhyme label="c" type="m" corresp="#s4:l5">kan</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Ik wensch uw 't <rhyme label="d" type="m" corresp="#s4:l6">allerbest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
