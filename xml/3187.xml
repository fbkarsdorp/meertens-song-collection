  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEt Geldt, 'tgun hart en ziel <rhyme label="a" type="m">ontstelt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wort heden alderliefst <rhyme label="a" type="m" corresp="#s1:l1">verselt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van alle slagh van <rhyme label="b" type="f">Menschen</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Haer vlijt uyt Geldt en goed-lust <rhyme label="c" type="m">spruyt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Haer doen dat wijst 'et <rhyme label="c" type="m" corresp="#s1:l4">uyt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat sy niet anders <rhyme label="b" type="f" corresp="#s1:l3">wenschen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wie nu maer Geldt heeft in de <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Mach veyligh reysen deur 'et <rhyme label="a" type="m" corresp="#s2:l1">Landt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En wordt ghedient, <rhyme label="b" type="f">ghekoestert</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Hoe vreemt, hoe wars, en <rhyme label="c" type="m">onbeleeft</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die wacker Schijven <rhyme label="c" type="m" corresp="#s2:l4">heeft</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Wordt vriendelijck <rhyme label="b" type="f" corresp="#s2:l3">ghekoestert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hoe swaren werck, hoe grooten <rhyme label="a" type="m">last</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Indien 'er Geldt word by <rhyme label="a" type="m" corresp="#s3:l1">ghetast</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Het wordt verschickt, <rhyme label="b" type="f">verdreven</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Door Geldt wordt alle dingh <rhyme label="c" type="m">ghedaen</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Door Geldt wil sommich <rhyme label="c" type="m" corresp="#s3:l4">gaen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In prijckel van sijn <rhyme label="b" type="f" corresp="#s3:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Door Geldt begeefmen sich in <rhyme label="a" type="m">noodt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Door Geldt so slaetmen menschen <rhyme label="a" type="m" corresp="#s4:l1">doodt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Het Geldt kan wonder <rhyme label="b" type="f">rechten</rhyme>;</l>
        <l id="s4:l4" met="4" type="-+">Het Geldt, wat dapper is <rhyme label="c" type="m">ontstelt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Het Geldt, het lieve <rhyme label="c" type="m" corresp="#s4:l4">Geldt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Kan alle dingh <rhyme label="b" type="f" corresp="#s4:l3">beslechten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het Geldt maeckt Sottebollen <rhyme label="a" type="m">vroet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Het Geldt maeckt boose Narren <rhyme label="a" type="m" corresp="#s5:l1">goedt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Het Geldt doet vreemde <rhyme label="b" type="f">dinghen</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Het Geldt sijn luyster en sen <rhyme label="c" type="m">gleur</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Heeft macht om deur en <rhyme label="c" type="m" corresp="#s5:l4">deur</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Een Vorsten Hart te <rhyme label="b" type="f" corresp="#s5:l3">dringhen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Waer Geldt-lust uytten reghel <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Daer baert 'et Geldt maer enckel <rhyme label="a" type="m" corresp="#s6:l1">quaet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En doet de Ziel <rhyme label="b" type="f">vermooren</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">De ziel die anders niet en <rhyme label="c" type="m">mint</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Als datse Schatten <rhyme label="c" type="m" corresp="#s6:l4">wint</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die helpt 'er self <rhyme label="b" type="f" corresp="#s6:l3">verlooren</rhyme>.</l>
      </lg>
    </lg>
  </text>
