  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OP Godt mijn HEEr ick my <rhyme label="a" type="m">betrou</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wat segt ghy dan te <rhyme label="b" type="f">terghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat mijn Siel als een Vogel <rhyme label="a" type="m" corresp="#s1:l1">sou</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Snel vlien op uwe <rhyme label="b" type="f" corresp="#s1:l2">Berghen</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">Want siet doch hoe die God'loos <rhyme label="c" type="m">fel</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gaen spannen hare <rhyme label="d" type="f">Boghen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Daer stellend' op haer Pijlen <rhyme label="c" type="m" corresp="#s1:l5">snel</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Heymlijck te schieten <rhyme label="d" type="f" corresp="#s1:l6">pooghen</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Die oprecht syn van <rhyme label="e" type="f">Herten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den gront ontrucken sy <rhyme label="a" type="m">geheel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die Vromen doet het <rhyme label="b" type="f">smerte</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Daer door sy onrecht leeren <rhyme label="a" type="m" corresp="#s2:l1">veel</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En spreken dan met <rhyme label="b" type="f" corresp="#s2:l2">schertse</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Wat sou die Vroom' wtrechten <rhyme label="c" type="m">doch</rhyme>?</l>
        <l id="s2:l6" met="3" type="-+">Maer Godt de HEER die <rhyme label="d" type="f">woonet</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">End' is in synen Tempel <rhyme label="c" type="m" corresp="#s2:l5">noch</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Syn Stoel in sHemels <rhyme label="d" type="f" corresp="#s2:l6">Throont</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Wel hooch over al <rhyme label="e" type="f">verheven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sijn Oogen sien daer op <rhyme label="a" type="m">bequaem</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Syn Oog' schelen daer <rhyme label="b" type="f">neven</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Beproeven s'Menschen Kinder <rhyme label="a" type="m" corresp="#s3:l1">tsaem</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hy merckt haer doen en <rhyme label="b" type="f" corresp="#s3:l2">Leven</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Den Vromen proeft die HEEre <rhyme label="c" type="m">wel</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Maer nochtans den <rhyme label="d" type="f">Godloosen</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Verhaet syn Siel in Yver <rhyme label="c" type="m" corresp="#s3:l5">fel</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Oock alle t'zort der <rhyme label="d" type="f" corresp="#s3:l6">Boosen</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">End' die Moetwil <rhyme label="e" type="f">beminnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Op den Godloosen sal hy <rhyme label="a" type="m">Vier</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En Solpher Reg'nen <rhyme label="b" type="f">laten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Tot Loon haer schencken met <rhyme label="a" type="m" corresp="#s4:l1">ghetier</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Een Onweer boven <rhyme label="b" type="f" corresp="#s4:l2">maten</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Die HEEr heeft lief <rhyme label="c" type="m">Rechtveerdicheyt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Want hy selfs <rhyme label="d" type="f">gherechte</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Syn ghenadich Aensicht is <rhyme label="c" type="m" corresp="#s4:l5">bereyt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Te helpen dien <rhyme label="d" type="f" corresp="#s4:l6">Gheslechte</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">All' die syn Recht <rhyme label="e" type="f">hanteeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
