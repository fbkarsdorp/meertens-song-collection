    <melody>Ik zie de morgenster</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk sie mijns leuens <rhyme label="a" type="f">eynde</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ende metter werelt <rhyme label="b" type="m">schijn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ick worde ghewect met <rhyme label="c" type="f">liden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Lof hebbe die heere <rhyme label="b" type="m" corresp="#s1:l2">mijn</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wie eest die daer <rhyme label="a" type="f">singhet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ende mi niet rusten en <rhyme label="b" type="m">laet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Dat ick die werelt soude <rhyme label="c" type="f">laten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Met alle haer <rhyme label="b" type="m" corresp="#s2:l2">toeuerlaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dat is een knape <rhyme label="a" type="f">koene</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Een heere die voer v <rhyme label="b" type="m">sterf</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Wanneer suldy mi <rhyme label="c" type="f">loonen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Alle minen swaren <rhyme label="b" type="m" corresp="#s3:l2">arbeyt</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O heere sijt mijns <rhyme label="a" type="f">genadich</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Al doer dijns selfs <rhyme label="b" type="m">belof</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ick soude v gaerne <rhyme label="c" type="f">dienen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Conde oft mochte ick <rhyme label="b" type="m" corresp="#s4:l2">noch</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Och ay mi lieue <rhyme label="a" type="f">siele</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ghi en coemt mi niet so <rhyme label="b" type="m">nae</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dat ghi in claren <rhyme label="c" type="f">bekinnen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die waerheyt mocht <rhyme label="b" type="m" corresp="#s5:l2">verstaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Alle ons liefs heeren <rhyme label="a" type="f">woerden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sijn euangelien <rhyme label="b" type="m">fijn</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Daer alle salighe <rhyme label="c" type="f">menschen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Af moeten verbetert <rhyme label="b" type="m" corresp="#s6:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Alle ons liefs heeren <rhyme label="a" type="f">leuen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Was bedructheyt ende <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s7:l3" met="3" type="-+">O heere hoe derf ic <rhyme label="c" type="f">emmermeer</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Ghierich oft gulsich <rhyme label="b" type="m" corresp="#s7:l2">ghesijn</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Sij sloeghen fijn <rhyme label="a" type="f">lichame</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Met gheesselen alsoe <rhyme label="b" type="m">mat</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Dat sijn weerde <rhyme label="c" type="f">lichame</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Van sinen bloede was <rhyme label="b" type="m" corresp="#s8:l2">nat</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Mi wondert alsoe <rhyme label="a" type="f">seere</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hoe ick gherusten <rhyme label="b" type="m">mach</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Dan in dat liden ons <rhyme label="c" type="f">heeren</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Na mijnder armer <rhyme label="b" type="m" corresp="#s9:l2">macht</rhyme>.</l>
      </lg>
    </lg>
  </text>
