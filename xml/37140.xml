    <melody>Een ruitertje jong van jaren</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Comt hier minnaers van <rhyme label="a" type="f">wevers</rhyme></l>
        <l id="s1:l2" met="3" type="-+">lief hebbers van <rhyme label="b" type="m">genucht</rhyme></l>
        <l id="s1:l3" met="3" type="-+">dit mach wel syn <rhyme label="a" type="f" corresp="#s1:l1">beschreven</rhyme></l>
        <l id="s1:l4" met="3" type="-+">men sach noiut meerder <rhyme label="b" type="m" corresp="#s1:l2">klucht</rhyme></l>
        <l id="s1:l5" met="4" type="-+">hoe  dat ick onlanghs heb <rhyme label="c" type="m">verslaen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">dat een wever is <rhyme label="c" type="m" corresp="#s1:l5">ghegaen</rhyme></l>
        <l id="s1:l7" met="4" type="-+">om syn stuck te draeghen <rhyme label="d" type="m">thuys</rhyme></l>
        <l id="s1:l8" met="3" type="-+">en heeft syn gelt <rhyme label="c" type="m" corresp="#s1:l5">ontfaen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het stuck was wel <rhyme label="a" type="f">geweven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">t'Vrauken tapt hem de <rhyme label="b" type="m">can</rhyme></l>
        <l id="s2:l3" met="3" type="-+">drinckt een keer ses of <rhyme label="a" type="f" corresp="#s2:l1">seven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">sprack sy tot desen <rhyme label="b" type="m" corresp="#s2:l2">man</rhyme></l>
        <l id="s2:l5" met="4" type="-+">u'ly  weet es dick en <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s2:l6" met="4" type="-+">en wel getreden met den <rhyme label="c" type="m" corresp="#s2:l5">voet</rhyme></l>
        <l id="s2:l7" met="4" type="-+">drinckt uwen buyck vol met <rhyme label="d" type="m">gemaeck</rhyme></l>
        <l id="s2:l8" met="3" type="-+">[...] docht den armen <rhyme label="c" type="m" corresp="#s2:l5">bloet</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gheeft my soo te <rhyme label="a" type="f">drincken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">vrauken gy soeckt noch <rhyme label="b" type="m">meer</rhyme></l>
        <l id="s3:l3" met="3" type="-+">gy sout my niet <rhyme label="a" type="f" corresp="#s3:l1">beschincken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">[...] waerom een <rhyme label="b" type="m" corresp="#s3:l2">keer</rhyme></l>
        <l id="s3:l5" met="4" type="-+">mocht ick een wever op <rhyme label="c" type="m">getau</rhyme></l>
        <l id="s3:l6" met="4" type="-+">van desen schonen backers <rhyme label="c" type="m" corresp="#s3:l5">vrauw</rhyme></l>
        <l id="s3:l7" met="4" type="-+">dus vraecht hij haer of <rhyme label="d" type="m">sy</rhyme></l>
        <l id="s3:l8" met="3" type="-+">voor t'gelt een kansken wagen <rhyme label="c" type="m" corresp="#s3:l5">wauw</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wat meent gy sprack de <rhyme label="a" type="f">vrauwe</rhyme></l>
        <l id="s4:l2" met="3" type="-+">als dat ick ben een <rhyme label="b" type="m">hoer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">dat ick myn man <rhyme label="a" type="f" corresp="#s4:l1">ontrauwe</rhyme></l>
        <l id="s4:l4" met="3" type="-+">doen  met een <rhyme label="b" type="m" corresp="#s4:l2">boer</rhyme></l>
        <l id="s4:l5" met="4" type="-+">den wever badt haer even <rhyme label="c" type="m">seer</rhyme></l>
        <l id="s4:l6" met="4" type="-+">laettet geschien voor eenen <rhyme label="c" type="m" corresp="#s4:l5">keer</rhyme></l>
        <l id="s4:l7" met="4" type="-+">siet daer is al myn gelt in <rhyme label="d" type="m">stuck</rhyme></l>
        <l id="s4:l8" met="3" type="-+">en weygert my niet <rhyme label="c" type="m" corresp="#s4:l5">meer</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy geij daer toe <rhyme label="a" type="f">geneghen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">docht  vrauken int <rhyme label="b" type="m">gespan</rhyme></l>
        <l id="s5:l3" met="3" type="-+">ksal u leeren ter <rhyme label="a" type="f" corresp="#s5:l1">deghen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">en sey dit haeren <rhyme label="b" type="m" corresp="#s5:l2">man</rhyme></l>
        <l id="s5:l5" met="4" type="-+">hoe dat die saecken was <rhyme label="c" type="m">gestaen</rhyme></l>
        <l id="s5:l6" met="4" type="-+">hoe sey laet hem ten bedden <rhyme label="c" type="m" corresp="#s5:l5">gaen</rhyme></l>
        <l id="s5:l7" met="4" type="-+">en doet hem moeder <rhyme label="d" type="m">ontcleen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Ick salder dan op <rhyme label="c" type="m" corresp="#s5:l5">slaen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De vrauw quam weder <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">den wever sat <rhyme label="b" type="m">allen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">sy spraeck met loose <rhyme label="a" type="f" corresp="#s6:l1">sinnen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">myn lief wilt u <rhyme label="b" type="m" corresp="#s6:l2">ontkleen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">laet ons tsaemen ten bedde <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">om eens ten can mynen man met <rhyme label="c" type="m" corresp="#s6:l5">schaem</rhyme></l>
        <l id="s6:l7" met="4" type="-+">daer hy stont door een gat  en <rhyme label="d" type="m">keeck</rhyme></l>
        <l id="s6:l8" met="3" type="-+">en hoordet spel al <rhyme label="c" type="m" corresp="#s6:l5">aen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den wever hem  <rhyme label="a" type="f">omcleede</rhyme></l>
        <l id="s7:l2" met="3" type="-+">trock uyt causen en <rhyme label="b" type="m">schoen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">het vrauken haer <rhyme label="a" type="f" corresp="#s7:l1">bereede</rhyme></l>
        <l id="s7:l4" met="3" type="-+">om bedde open te <rhyme label="b" type="m" corresp="#s7:l2">doen</rhyme></l>
        <l id="s7:l5" met="4" type="-+">hy sey myn lief stryckt op u <rhyme label="c" type="m">gelt</rhyme></l>
        <l id="s7:l6" met="4" type="-+">daer licht tot thien guldens <rhyme label="c" type="m" corresp="#s7:l5">getelt</rhyme></l>
        <l id="s7:l7" met="4" type="-+">en comt dan haestich in het <rhyme label="d" type="m">bet</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Ick heb my naeckt <rhyme label="c" type="m" corresp="#s7:l5">gestelt</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">T'vrauken heeft <rhyme label="a" type="f">opgenomen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">t'ghelt en was wel <rhyme label="b" type="m">ghesint</rhyme></l>
        <l id="s8:l3" met="3" type="-+">hy sprack wilt by my <rhyme label="a" type="f" corresp="#s8:l1">comen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">den brant my over <rhyme label="b" type="m" corresp="#s8:l2">win</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Ick sal hem blusschen wel te <rhyme label="c" type="m">keur</rhyme></l>
        <l id="s8:l6" met="4" type="-+">spraeck dese vrauw eer een alf  <rhyme label="c" type="m" corresp="#s8:l5">heur</rhyme></l>
        <l id="s8:l7" met="4" type="-+">gy en sult niet meer brandich <rhyme label="d" type="m">syn</rhyme></l>
        <l id="s8:l8" met="3" type="-+">dus en maeckt geen <rhyme label="c" type="m" corresp="#s8:l5">getreur</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Den man a daer te <rhyme label="a" type="f">vooren</rhyme></l>
        <l id="s9:l2" met="3" type="-+">veel roen gereet <rhyme label="b" type="m">gemaeckt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">hij quaem met twee <rhyme label="a" type="f" corresp="#s9:l1">gebeuren</rhyme></l>
        <l id="s9:l4" met="3" type="-+">ten huijse in <rhyme label="b" type="m" corresp="#s9:l2">gestakt</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Hy sey waer is den wever <rhyme label="c" type="m">nauw</rhyme></l>
        <l id="s9:l6" met="4" type="-+">die hier comt slapen by myn <rhyme label="c" type="m" corresp="#s9:l5">vrauw</rhyme></l>
        <l id="s9:l7" met="4" type="-+">hy hief het decksel van het <rhyme label="d" type="m">bed</rhyme></l>
        <l id="s9:l8" met="3" type="-+">en greep hem by de <rhyme label="c" type="m" corresp="#s9:l5">mauw</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Comt hier ick sal u <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">sey elck en viel aen <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">ander vrauwen <rhyme label="a" type="f" corresp="#s10:l1">onteeren</rhyme></l>
        <l id="s10:l4" met="3" type="-+">die u niet aen en <rhyme label="b" type="m" corresp="#s10:l2">gaen</rhyme></l>
        <l id="s10:l5" met="4" type="-+">sa lustich slaet een weynich <rhyme label="c" type="m">styf</rhyme></l>
        <l id="s10:l6" met="4" type="-+">met roen op desen wevers <rhyme label="c" type="m" corresp="#s10:l5">lyf</rhyme></l>
        <l id="s10:l7" met="4" type="-+">als synen brandt dan is <rhyme label="d" type="m">geblust</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Iaecht hem dan naer syn <rhyme label="c" type="m" corresp="#s10:l5">wyf</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Laet ons den wever <rhyme label="a" type="f">touwen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">voor syn thien guldens <rhyme label="b" type="m">gelt</rhyme></l>
        <l id="s11:l3" met="3" type="-+">soo mach hij eens <rhyme label="a" type="f" corresp="#s11:l1">ontauwen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">dat hijt my heeft <rhyme label="b" type="m" corresp="#s11:l2">getelt</rhyme></l>
        <l id="s11:l5" met="4" type="-+">hij riep terstont och moort och <rhyme label="c" type="m">moort</rhyme></l>
        <l id="s11:l6" met="4" type="-+">och vrienden doch myn be <rhyme label="c" type="m" corresp="#s11:l5">verhoort</rhyme></l>
        <l id="s11:l7" met="4" type="-+">och wilt toch op houden van <rhyme label="d" type="m">slaen</rhyme></l>
        <l id="s11:l8" met="3" type="-+">en weest so niet <rhyme label="c" type="m" corresp="#s11:l5">verstoort</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Neen gast wy moeten <rhyme label="a" type="f">vagen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">met roen noch op u <rhyme label="b" type="m">leen</rhyme></l>
        <l id="s12:l3" met="3" type="-+">als gy werck thuys gaet <rhyme label="a" type="f" corresp="#s12:l1">draeghen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">syt met u wyf te <rhyme label="b" type="m" corresp="#s12:l2">vreen</rhyme></l>
        <l id="s12:l5" met="4" type="-+">den wever badt hij kerm hij <rhyme label="c" type="m">kreet</rhyme></l>
        <l id="s12:l6" met="4" type="-+">Ja dat hij hem van voer <rhyme label="c" type="m" corresp="#s12:l5">bescheet</rhyme></l>
        <l id="s12:l7" met="4" type="-+">denck eens hoe dat hy was <rhyme label="d" type="m">gestelt</rhyme></l>
        <l id="s12:l8" met="3" type="-+">al van het acter <rhyme label="c" type="m" corresp="#s12:l5">sweet</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Oorlof maer al die <rhyme label="a" type="f">slagen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">viel hij op bey syn <rhyme label="b" type="m">benen</rhyme></l>
        <l id="s13:l3" met="3" type="-+">en swoer dat van syn <rhyme label="a" type="f" corresp="#s13:l1">daghen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">noyt meer en sou <rhyme label="b" type="m" corresp="#s13:l2">geschien</rhyme></l>
        <l id="s13:l5" met="4" type="-+">doen laten sy den wever <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s13:l6" met="4" type="-+">heel naeckt als een gepluymden <rhyme label="c" type="m" corresp="#s13:l5">haen</rhyme></l>
        <l id="s13:l7" met="4" type="-+">gy vrauwkens leert hier <rhyme label="d" type="m">uyt</rhyme></l>
        <l id="s13:l8" met="3" type="-+">u eere boven <rhyme label="c" type="m" corresp="#s13:l5">staen</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
