  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als Iesus in den gaerden <rhyme label="a" type="m">ginck</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En hem sijn lijden <rhyme label="a" type="m" corresp="#s1:l1">aenvinck</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Daer truerden alles wat daer <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daer truerden loof en groene <rhyme label="b" type="m" corresp="#s1:l3">gras</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy heeft also gestreden <rhyme label="a" type="m">hart</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat sijn sweet als bloets droppen <rhyme label="a" type="m" corresp="#s2:l1">wardt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Want lijf tot op die erden <rhyme label="b" type="m">ran</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">O mensch gedenckt alle tijt daer <rhyme label="b" type="m" corresp="#s2:l3">an</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer nae hy veel geleden <rhyme label="a" type="m">hadt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Mit slaegen, geisten, en met <rhyme label="a" type="m" corresp="#s3:l1">spot</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Tot dat hy aent Cruys geslagen <rhyme label="b" type="m">starf</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Den Hemel ons daer door <rhyme label="b" type="m" corresp="#s3:l3">erwarf</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wie dit niet dickwils en <rhyme label="a" type="m">betracht</rhyme></l>
        <l id="s4:l2" met="4" type="-+">En Christi lijden soo <rhyme label="a" type="m" corresp="#s4:l1">veracht</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Der wordt salich nummer <rhyme label="b" type="m">meer</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Ondanckbaerheyt haet Godt die <rhyme label="b" type="m" corresp="#s4:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Derhalven seggen wy eewich <rhyme label="a" type="m">danck</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">O Godt, u, ons leven <rhyme label="a" type="m" corresp="#s5:l1">lanck</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">O laet u bitter lijdens <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Aen ons doch niet verlooren <rhyme label="b" type="m" corresp="#s5:l3">sijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
