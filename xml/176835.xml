    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Siet hoe fijn en hoe lieffelijck <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En hoe genoechlijck is <rhyme label="b" type="m">‘t</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat Broederen in <rhyme label="a" type="f" corresp="#s1:l1">vrede</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Woonen met <rhyme label="a" type="f" corresp="#s1:l1">eendrachtichede</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">By malkanderen sonder <rhyme label="b" type="m" corresp="#s1:l2">twist</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">‘t Is ghelijck als de <rhyme label="a" type="f">vermaerde</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Balssem kostelijck en <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die vloeyt als de <rhyme label="a" type="f" corresp="#s2:l1">onghespaerde</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Van den hoofde in den <rhyme label="a" type="f" corresp="#s2:l1">baerde</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Iae in den baert van Aaron <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die daer van boven <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Tot in sijn kleedt <rhyme label="b" type="m">af-vloeyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Ghelijck den dauw <rhyme label="a" type="f" corresp="#s3:l1">bekleven</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die van Harmon daelt <rhyme label="a" type="f" corresp="#s3:l1">ghedreven</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Ende de Berghen Zyons <rhyme label="b" type="m" corresp="#s3:l2">besproeyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want den Heere <rhyme label="a" type="f">onversweghen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Die belooft te gheven <rhyme label="b" type="m">aldaer</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Sijnen troostelijcke <rhyme label="a" type="f" corresp="#s4:l1">zeghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En het leven al te <rhyme label="a" type="f" corresp="#s4:l1">deghen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">In der eeuwigheyt <rhyme label="b" type="m" corresp="#s4:l2">eenpaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
