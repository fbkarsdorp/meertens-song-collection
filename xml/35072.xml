<song>
  <meta>
    <id>35072</id>
    <date>
      <year-start>1600</year-start>
      <year-end>1700</year-end>
    </date>
    <tags>
      <tag translation="admonitory song">vermaanlied</tag>
      <tag translation="">wereldlijk</tag>
    </tags>
    <melody>Un inconnu pour vos charmes soupire</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Wie kan den lof der soete vrijheijt <rhyme label="a" type="f">melden</rhyme></l>
        <l id="s1:l2" met="5" type="-+">en geven t'geen haer weerdigheijt <rhyme label="b" type="m">verdient</rhyme></l>
        <l id="s1:l3" met="4" type="-+">ick derve seggen, beminden <rhyme label="b" type="m" corresp="#s1:l2">vrient</rhyme></l>
        <l id="s1:l4" met="2" type="-+">vint m'eenigh <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">in t'leven, vrijheijt <rhyme label="c" type="m" corresp="#s1:l4">doet</rhyme></l>
        <l id="s1:l6" met="5" type="-+">het smaeck lick sijn, en naer sijn waerde <rhyme label="a" type="f" corresp="#s1:l1">gelden</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">die s'uft  voor vast die trouw ontloken <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s2:l2" met="5" type="-+">sijn beste jeught en aengenaemsten <rhyme label="b" type="m">tijdt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">in geen goe dagen van vrijheijd <rhyme label="b" type="m" corresp="#s2:l2">slijt</rhyme></l>
        <l id="s2:l4" met="2" type="-+">en niet en <rhyme label="c" type="m">swigt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">dat hij sigh veel te <rhyme label="c" type="m" corresp="#s2:l4">licht</rhyme></l>
        <l id="s2:l6" met="5" type="-+">van vreught berooft, om andre vreught te <rhyme label="a" type="f" corresp="#s2:l1">geven</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">een visken dat in twater kom te <rhyme label="a" type="f">swemmen</rhyme></l>
        <l id="s3:l2" met="5" type="-+">soo langh tgeen lust tot visschers lockaes <rhyme label="b" type="m">geeft</rhyme></l>
        <l id="s3:l3" met="4" type="-+">in volle vrijheijt en blijheijt <rhyme label="b" type="m" corresp="#s3:l2">leeft</rhyme></l>
        <l id="s3:l4" met="2" type="-+">maer soo t eens <rhyme label="c" type="m">bijt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">het raeckt die blijde <rhyme label="c" type="m" corresp="#s3:l4">quijt</rhyme></l>
        <l id="s3:l6" met="5" type="-+">den angel doet al hoop van vreughden <rhyme label="a" type="f" corresp="#s3:l1">stremmen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">gelijck den angel licht in t'aes <rhyme label="a" type="f">gedoken</rhyme></l>
        <l id="s4:l2" met="5" type="-+">het welck de viskens tot het bijten <rhyme label="b" type="m">terght</rhyme></l>
        <l id="s4:l3" met="4" type="-+">elc een der staeten dus iet <rhyme label="b" type="m" corresp="#s4:l2">verberght</rhyme></l>
        <l id="s4:l4" met="2" type="-+">dat praemt en <rhyme label="c" type="m">pranght</rhyme></l>
        <l id="s4:l5" met="3" type="-+">dat haest men dien <rhyme label="c" type="m" corresp="#s4:l4">ontfanght</rhyme></l>
        <l id="s4:l6" met="5" type="-+">en pijn en spijt in plaets van vreught kan <rhyme label="a" type="f" corresp="#s4:l1">stoken</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">soo gaet het meest in ald schande <rhyme label="a" type="f">staten</rhyme></l>
        <l id="s5:l2" met="5" type="-+">in t'uijtterlick beloven sij veel <rhyme label="b" type="m">goedt</rhyme></l>
        <l id="s5:l3" met="4" type="-+">maer naer men vast is men eerst <rhyme label="b" type="m" corresp="#s5:l2">ontmoet</rhyme></l>
        <l id="s5:l4" met="2" type="-+">dat geen van <rhyme label="c" type="m">all</rhyme></l>
        <l id="s5:l5" met="3" type="-+">een thienden geven <rhyme label="c" type="m" corresp="#s5:l4">sal</rhyme></l>
        <l id="s5:l6" met="5" type="-+">der vreughden die men onlanghs heeft <rhyme label="a" type="f" corresp="#s5:l1">verlaten</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">wilt ghij t'gedaght tot trouwen laten <rhyme label="a" type="f">swieren</rhyme></l>
        <l id="s6:l2" met="5" type="-+">ghij wordt voor al berooft van eijgen <rhyme label="b" type="m">magt</rhyme></l>
        <l id="s6:l3" met="4" type="-+">noch vint de rust niet die ghij <rhyme label="b" type="m" corresp="#s6:l2">betracht</rhyme></l>
        <l id="s6:l4" met="2" type="-+">een anders <rhyme label="c" type="m">sin</rhyme></l>
        <l id="s6:l5" met="3" type="-+">is d'uw niet, en de <rhyme label="c" type="m" corresp="#s6:l4">min</rhyme></l>
        <l id="s6:l6" met="5" type="-+">en laet sigh nooijt na wil' en wensch <rhyme label="a" type="f" corresp="#s6:l1">bestieren</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Denckt ghij u in een clooster in te <rhyme label="a" type="f">lijven</rhyme></l>
        <l id="s7:l2" met="5" type="-+">en met veel goet te koopen <rhyme label="b" type="m">aerremoe</rhyme></l>
        <l id="s7:l3" met="4" type="-+">nouw is de deure van t'clooster <rhyme label="b" type="m" corresp="#s7:l2">toe</rhyme></l>
        <l id="s7:l4" met="2" type="-+">of ghij <rhyme label="c" type="m">bevind</rhyme></l>
        <l id="s7:l5" met="3" type="-+">dat rust die ghij <rhyme label="c" type="m" corresp="#s7:l4">bemint</rhyme></l>
        <l id="s7:l6" met="5" type="-+">daer buijten moet, en ghij daer binnen <rhyme label="a" type="f" corresp="#s7:l1">blijven</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">geen queselrije, bestieringh, of <rhyme label="a" type="f">beloften</rhyme></l>
        <l id="s8:l2" met="5" type="-+">schoon sulck een staet verheft wort <rhyme label="b" type="m">hemelhoog</rhyme></l>
        <l id="s8:l3" met="4" type="-+">mij t'minst bekoren want hun <rhyme label="b" type="m" corresp="#s8:l2">gepoogh</rhyme></l>
        <l id="s8:l4" met="2" type="-+">siet slechts op <rhyme label="c" type="m">baet</rhyme></l>
        <l id="s8:l5" met="3" type="-+">of op ghemack, en <rhyme label="c" type="m" corresp="#s8:l4">laet</rhyme></l>
        <l id="s8:l6" met="5" type="-+">u noijt de vreught genieten daers of <rhyme label="a" type="f" corresp="#s8:l1">stoften</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="-+">indien elck een de waerheijt wilde <rhyme label="a" type="f">seggen</rhyme></l>
        <l id="s9:l2" met="5" type="-+">die vroegh een staet door raet onthoud <rhyme label="b" type="m">heeft</rhyme></l>
        <l id="s9:l3" met="4" type="-+">of hij volkomen in ruste <rhyme label="b" type="m" corresp="#s9:l2">leeft</rhyme></l>
        <l id="s9:l4" met="2" type="-+">voorwaer ick <rhyme label="c" type="m">meen</rhyme></l>
        <l id="s9:l5" met="3" type="-+">van duijsent qualick <rhyme label="c" type="m" corresp="#s9:l4">een</rhyme></l>
        <l id="s9:l6" met="5" type="-+">vernoeght, sijn keus als vooren sou <rhyme label="a" type="f" corresp="#s9:l1">beleggen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="5" type="-+">gemerckt dan dat geen na berouw kan <rhyme label="a" type="f">baten</rhyme></l>
        <l id="s10:l2" met="5" type="-+">en dat den mensch niet altijt tselve <rhyme label="b" type="m">b'haeght</rhyme></l>
        <l id="s10:l3" met="4" type="-+">let op het spreeckwoort dat sigh <rhyme label="b" type="m" corresp="#s10:l2">beclaeght</rhyme></l>
        <l id="s10:l4" met="2" type="-+">dat t'haest <rhyme label="c" type="m">getrauwt</rhyme></l>
        <l id="s10:l5" met="3" type="-+">is, dat veel jaren <rhyme label="c" type="m" corresp="#s10:l4">rauwt</rhyme></l>
        <l id="s10:l6" met="5" type="-+">en denckt soo gaet het oock in alle <rhyme label="a" type="f" corresp="#s10:l1">staten</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="5" type="-+">al wierd ghij door een diamante <rhyme label="a" type="f">beten</rhyme></l>
        <l id="s11:l2" met="5" type="-+">in goudt gestelt, gebonden , mij <rhyme label="b" type="m">gelooft</rhyme></l>
        <l id="s11:l3" met="4" type="-+">sijn glans en waerde wierd haest <rhyme label="b" type="m" corresp="#s11:l2">verdooft</rhyme></l>
        <l id="s11:l4" met="2" type="-+">want geen mensch <rhyme label="c" type="m">wint</rhyme></l>
        <l id="s11:l5" met="3" type="-+">dat vrijheijt rooft en <rhyme label="c" type="m" corresp="#s11:l4">bint</rhyme></l>
        <l id="s11:l6" met="5" type="-+">schoon dit van veel maer wort te laet <rhyme label="a" type="f" corresp="#s11:l1">geweten</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="5" type="-+">De vrijheijt dan is topperst alles <rhyme label="a" type="f">goeden</rhyme></l>
        <l id="s12:l2" met="5" type="-+">die doet en laet het goon hij wenscht en <rhyme label="b" type="m">lust</rhyme></l>
        <l id="s12:l3" met="4" type="-+">vint hij in t'eene geen volle <rhyme label="b" type="m" corresp="#s12:l2">rust</rhyme></l>
        <l id="s12:l4" met="2" type="-+">het andere <rhyme label="c" type="m">kan</rhyme></l>
        <l id="s12:l5" met="3" type="-+">vervollen t'goon hij <rhyme label="c" type="m" corresp="#s12:l4">van</rhyme></l>
        <l id="s12:l6" met="5" type="-+">een saeck alleen niet ligt en kan <rhyme label="a" type="f" corresp="#s12:l1">vermoeden</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
