    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>Nadien uw goddelijkheid</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAnneer ghy min <rhyme label="a" type="m">vertrouwt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Op Godt, dan op u <rhyme label="a" type="m" corresp="#s1:l1">Goudt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hout dat voor een vast <rhyme label="b" type="f">teecken</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Dat u de <rhyme label="c" type="m">gierigheyt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Gantsch en al heeft <rhyme label="b" type="f" corresp="#s1:l3">doorsteecken</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">En in u Boesem <rhyme label="c" type="m" corresp="#s1:l4">leyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wanneer ghy in u <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Voelt overgroote <rhyme label="a" type="m" corresp="#s2:l1">smert</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als ghy u gelt moet <rhyme label="b" type="f">derven</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">En of u <rhyme label="c" type="m">saligheydt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Dan gheraeckt was tot <rhyme label="b" type="f" corresp="#s2:l3">scherven</rhyme>;</l>
        <l id="s2:l6" met="3" type="-+">Leght vol <rhyme label="c" type="m" corresp="#s2:l4">mistroostigheydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wanneer ghy niet en <rhyme label="a" type="m">gheeft</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Aen die van nooden <rhyme label="a" type="m" corresp="#s3:l1">heeft</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Den rijckdom uwer <rhyme label="b" type="f">gaven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Als ghy voor u <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Hout u goet of u <rhyme label="b" type="f" corresp="#s3:l3">haven</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">En niemant maeckt <rhyme label="c" type="m" corresp="#s3:l4">ghemeen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Of soo ghy wat goets <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Met een bedroeft <rhyme label="a" type="m" corresp="#s4:l1">ghemoet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Van 't u, u naesten <rhyme label="b" type="f">seghent</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">En hem die tot u <rhyme label="c" type="m">schreyt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">In sijn noot bitz <rhyme label="b" type="f" corresp="#s4:l3">bejeghent</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Niet met, <rhyme label="c" type="m" corresp="#s4:l4">medooghentheyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wanneer ghy meerder <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Nae 't gheen, dat ghy <rhyme label="a" type="m" corresp="#s5:l1">behoort</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Te doen, om gelt te <rhyme label="b" type="f">winnen</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Dan nae des Heeren <rhyme label="c" type="m">Wet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat ons Godt leert <rhyme label="b" type="f" corresp="#s5:l3">beminnen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En wil een reghel <rhyme label="c" type="m" corresp="#s5:l4">set</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Als gh' in Godsdienstigh <rhyme label="a" type="m">werck</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Of in Gods Heyl'ghe <rhyme label="a" type="m" corresp="#s6:l1">Kerck</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Wel komt om Godt te <rhyme label="b" type="f">vreesen</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Maer evenwel u <rhyme label="c" type="m">ziel</rhyme></l>
        <l id="s6:l5" met="3" type="-+">En u sinnen laet <rhyme label="b" type="f" corresp="#s6:l3">wesen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Daer meest u winningh <rhyme label="c" type="m" corresp="#s6:l4">viel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wanneer dat u den <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">In welck u hant niet <rhyme label="a" type="m" corresp="#s7:l1">magh</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Winst doen; u valt te <rhyme label="b" type="f">langhe</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Schoon dat ons <rhyme label="c" type="m">ov'righeyt</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Tot ghebeden, <rhyme label="b" type="f" corresp="#s7:l3">lofsanghen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Die wel heeft <rhyme label="c" type="m" corresp="#s7:l4">aengheleyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wanneer ghy scherp van <rhyme label="a" type="m">Gheest</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Zijt, om het <rhyme label="a" type="m" corresp="#s8:l1">allermeest</rhyme></l>
        <l id="s8:l3" met="3" type="-+">In koopmanschap te <rhyme label="b" type="f">winnen</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Doch dom in het <rhyme label="c" type="m">bevroen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Hoe ghy Godt moet <rhyme label="b" type="f" corresp="#s8:l3">beminnen</rhyme>;</l>
        <l id="s8:l6" met="3" type="-+">En u tot deughden <rhyme label="c" type="m" corresp="#s8:l4">spoen</rhyme>.</l>
      </lg>
    </lg>
  </text>
