    <melody>Hansje sneed het koren</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Droeve tijdt // die ick <rhyme label="a" type="m">verslyt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met vruchteloos <rhyme label="b" type="f">beclaghen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">O aertsche Hel // doot mijn <rhyme label="c" type="m">ghequel</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Door t'snoeyen van mijn <rhyme label="b" type="f" corresp="#s1:l2">daghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick ben alleen // verd van de <rhyme label="a" type="m">geen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En tegen danck <rhyme label="b" type="f">gebannen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Helaes! van die // ick 't liefste <rhyme label="c" type="m">sie</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van alle jonghe <rhyme label="b" type="f" corresp="#s2:l2">Mannen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ach ongheluck // ach leyde <rhyme label="a" type="m">druck</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sult nimmer ghy <rhyme label="b" type="f">ophouwe</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dit hart ghewelt // dat nu dus <rhyme label="c" type="m">knelt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dees teer benaude <rhyme label="b" type="f" corresp="#s3:l2">Vrouwe</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O schraele doot // comt en door <rhyme label="a" type="m">stoot</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dees vrouwelijcke <rhyme label="b" type="f">Borsten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ach! strengh gemoet // dat so <rhyme label="c" type="m">verwoet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Na u Kints bloet gaet <rhyme label="b" type="f" corresp="#s4:l2">dorsten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Mijn Moeder wreet // doet my dit <rhyme label="a" type="m">leet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En ghy versufte <rhyme label="b" type="f">Grijser</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Een Keysers kint // om dat het <rhyme label="c" type="m">mint</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Besluytmen straf int <rhyme label="b" type="f" corresp="#s5:l2">Yser</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">U fel ghegrim // u wreetheyt <rhyme label="a" type="m">slim</rhyme></l>
        <l id="s6:l2" met="3" type="-+">U dreyghen, noch u <rhyme label="b" type="f">sweeren</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Geen schric noch noot // noch duyvel <rhyme label="c" type="m">doot</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En can myn Liefde <rhyme label="b" type="f" corresp="#s6:l2">deeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer als ick sal // int traenen <rhyme label="a" type="m">dal</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Door ongheneught <rhyme label="b" type="f">verdwynen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Mijn schim bevreest // of bleecke <rhyme label="c" type="m">gheest</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sal nae myn doot <rhyme label="b" type="f" corresp="#s7:l2">verschynen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">En quellen swaer // myn Ouders <rhyme label="a" type="m">maer</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Mijn Echte Man <rhyme label="b" type="f">ghepreesen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Die sal ick dan // waer in ick <rhyme label="c" type="m">can</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Noch even dienstich <rhyme label="b" type="f" corresp="#s8:l2">weesen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Mijn Prinsch vertoeft // weest niet <rhyme label="a" type="m">bedroeft</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Bedaert, u wilt <rhyme label="b" type="f">verlanghen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Mijn hart blyft u // al ist lyf <rhyme label="c" type="m">nu</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">In een Kercker <rhyme label="b" type="f" corresp="#s9:l2">ghevanghen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De trou en eed // dien ick u <rhyme label="a" type="m">deed</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Die zullen geen sints <rhyme label="b" type="f">lieghen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Hoopt, en vaert wel // de dinghen <rhyme label="c" type="m">snel</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Op aerden licht <rhyme label="b" type="f" corresp="#s10:l2">vervliegen</rhyme>.</l>
      </lg>
    </lg>
  </text>
