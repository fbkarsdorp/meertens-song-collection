<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>178255</id>
    <date>
      <year-start>1788</year-start>
      <year-end>1788</year-end>
    </date>
    <tags/>
    <melody>Zoutmans glorie</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Voor de Vryheid, voor de <rhyme label="a" type="f">Staaten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Voor Oranje, voor 's Lands <rhyme label="b" type="m">heyl</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Voor verdrukten, voor <rhyme label="a" type="f" corresp="#s1:l1">verlaaten</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Hebben wy ons Leeven <rhyme label="b" type="m" corresp="#s1:l2">veil</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Vuyle Laster moog ons <rhyme label="a" type="f" corresp="#s1:l1">haaten</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Moordzugt schiet' op ons haar <rhyme label="b" type="m" corresp="#s1:l2">peil</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Laat de bloetdorst op ons <rhyme label="a" type="f">knaagen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">d'Afgrond spuwd zyn zwadder <rhyme label="b" type="m">uyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Mogt Vervolg zugt ons <rhyme label="a" type="f" corresp="#s2:l1">verjaagen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Heldenmoed word nooyt <rhyme label="b" type="m" corresp="#s2:l2">gestuyt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Voor Oranje alles te <rhyme label="a" type="f" corresp="#s2:l1">waagen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Is het Vaderlands <rhyme label="b" type="m" corresp="#s2:l2">besluyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Nimmer willen wy <rhyme label="a" type="f">gedoogen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat het lieve <rhyme label="b" type="m">Vaderland</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Onze Vryheid ons <rhyme label="a" type="f" corresp="#s3:l1">vermoogen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Door een Moordrot word <rhyme label="b" type="m" corresp="#s3:l2">bemand</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Liever sneuvelen voor hun <rhyme label="a" type="f" corresp="#s3:l1">oogen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Met het Krygstuig in de <rhyme label="b" type="m" corresp="#s3:l2">hand</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vlied ter Waap'nen waare <rhyme label="a" type="f">Belgen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Slaat de vuysten aan het <rhyme label="b" type="m">staal</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Stryd voor Willem! Hoed uw <rhyme label="a" type="f" corresp="#s4:l1">Telgen</rhyme>!</l>
        <l id="s4:l4" met="4" type="+-">Steld verderf dog eens een <rhyme label="b" type="m" corresp="#s4:l2">Paal</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Laat u niet uit vrees <rhyme label="a" type="f" corresp="#s4:l1">verdelgen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Sterft maar Sterft in <rhyme label="b" type="m" corresp="#s4:l2">Zegepraal</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
