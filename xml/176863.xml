    <melody>Wat is het land vol vreugde</melody>
    <categories>
      <category translation="amusement">vermaak</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Kom vrienden blyft wat <rhyme label="a" type="m">staan</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En hoor die grap eens <rhyme label="a" type="m" corresp="#s1:l1">aan</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van twee boerinnen <rhyme label="b" type="m">welbekend</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Zo eerlyk en zo <rhyme label="b" type="m" corresp="#s1:l3">exelent</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">ô Jee! wat een <rhyme label="c" type="m">deugd</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Het is de Kermis <rhyme label="c" type="m" corresp="#s1:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De eene wat een <rhyme label="a" type="m">praat</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Woont in een lange <rhyme label="a" type="m" corresp="#s2:l1">straat</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En de andere daar wat digt <rhyme label="b" type="m">omtrent</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Is in haar buurt ook <rhyme label="b" type="m" corresp="#s2:l3">welbekend</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">ô Jee! wat een <rhyme label="c" type="m">deugd</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hoor eens die Kermis <rhyme label="c" type="m" corresp="#s2:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Zy liepen lings nog <rhyme label="a" type="m">regts</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Maar met twee <rhyme label="a" type="m" corresp="#s3:l1">heereknegts</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Daar waagden zy wel eens een <rhyme label="b" type="m">kans</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Nu houden zy 't met getrouwde <rhyme label="b" type="m" corresp="#s3:l3">mans</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Wel is dat geen, <rhyme label="c" type="m">deugd</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Of is 't maar Kermis <rhyme label="c" type="m" corresp="#s3:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maar zy kwamen net op 't <rhyme label="a" type="m">mat</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Toen hebben zy smeer <rhyme label="a" type="m" corresp="#s4:l1">gehad</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De vrouwtjes die wierden zo hevig <rhyme label="b" type="m">kwaad</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat zy plukten die lieve Boerinnen op <rhyme label="b" type="m" corresp="#s4:l3">straat</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">En dat voor haar <rhyme label="c" type="m">deugd</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Is dat geen Kermis <rhyme label="c" type="m" corresp="#s4:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ja zy liepen haat <rhyme label="a" type="m">weldra</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">De kelder in agter <rhyme label="a" type="m" corresp="#s5:l1">na</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daar wierd de kap met het <rhyme label="b" type="m">boezelaar</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Een hevige stryd op nieuw <rhyme label="b" type="m" corresp="#s5:l3">gewaar</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">En dat voor haar <rhyme label="c" type="m">deugd</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Was dat geen Kermis <rhyme label="c" type="m" corresp="#s5:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dog Savonds <rhyme label="a" type="m">opgetooit</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En de kap weer net <rhyme label="a" type="m" corresp="#s6:l1">geplooit</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Gingen zy weer op nieuw haar oude <rhyme label="b" type="m">gang</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat duurde de heele nagt zelf <rhyme label="b" type="m" corresp="#s6:l3">lang</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">o Jee! wat een <rhyme label="c" type="m">deugd</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Was dat geen Kermis <rhyme label="c" type="m" corresp="#s6:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Tot aan de <rhyme label="a" type="m">morgenstond</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als een vaatje melk zoo <rhyme label="a" type="m" corresp="#s7:l1">rond</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Toen rolde men heerlyk <rhyme label="b" type="m">uitgekrold</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">De kelder in dat het <rhyme label="b" type="m" corresp="#s7:l3">zuifebolt</rhyme>,</l>
        <l id="s7:l5" met="3" type="+-">Wel nou dat is <rhyme label="c" type="m">deugd</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Dat heet eerst Kermis <rhyme label="c" type="m" corresp="#s7:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">De baas al met <rhyme label="a" type="m">verstand</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die wees hun van de <rhyme label="a" type="m" corresp="#s8:l1">hand</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Wat heb ik met die mekrollen <rhyme label="b" type="m">vandoen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Zy krenken by ieder een myn <rhyme label="b" type="m" corresp="#s8:l3">fatzoen</rhyme>,</l>
        <l id="s8:l5" met="3" type="+-">En dat is geen <rhyme label="c" type="m">deugd</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Loop heen met je Kermis <rhyme label="c" type="m" corresp="#s8:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Maar het duurde een korte <rhyme label="a" type="m">tyd</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Of de zaak was weer <rhyme label="a" type="m" corresp="#s9:l1">bygeleid</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Nu kunnen zy zwieren elk nagthuis <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Tot verdriet van menig <rhyme label="b" type="m" corresp="#s9:l3">huisgezin</rhyme>,</l>
        <l id="s9:l5" met="3" type="+-">Wel nou dat is <rhyme label="c" type="m">deugd</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Dat noemt men eerst Kermis <rhyme label="c" type="m" corresp="#s9:l5">vreugd</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Om nu het besluit te <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Zy praten nog van haar <rhyme label="a" type="m" corresp="#s10:l1">fatzoen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat meeten zy met de el zelf <rhyme label="b" type="m">uit</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Al schoon het bedraagt geen enkelde <rhyme label="b" type="m" corresp="#s10:l3">duit</rhyme>,</l>
        <l id="s10:l5" met="3" type="+-">o Neen, want al die <rhyme label="c" type="m">deugd</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Past niet by de Kermis <rhyme label="c" type="m" corresp="#s10:l5">vreugd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
