  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WEl op hertken wel <rhyme label="a" type="m">gemoet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ende loeft den heere <rhyme label="a" type="m" corresp="#s1:l1">goet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Hoe slapen wij dus <rhyme label="b" type="f">langhe</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Laet ons vertyen vleesch en <rhyme label="a" type="m" corresp="#s1:l1">bloet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ende houden dat in <rhyme label="b" type="f" corresp="#s1:l3">bedwanghe</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O siele ic hoor wel dat ghi <rhyme label="a" type="m">ghist</rhyme></l>
        <l id="s2:l2" met="4" type="-+">V bewijs ende uwen <rhyme label="a" type="m" corresp="#s2:l1">list</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Es al om mijn <rhyme label="b" type="f">bederuen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Ghi segt / het wort hier al <rhyme label="a" type="m" corresp="#s2:l1">ghequist</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Oft ick nature moet <rhyme label="b" type="f" corresp="#s2:l3">steruen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nature / steruen waer v <rhyme label="a" type="m">best</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ghi sullet seker vinden int <rhyme label="a" type="m" corresp="#s3:l1">lest</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Den tijt die sal noch <rhyme label="b" type="f">comen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Siet dat ghi die siele wel <rhyme label="a" type="m" corresp="#s3:l1">vest</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Want si mach v wel <rhyme label="b" type="f" corresp="#s3:l3">vromen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Och reden ghi hebt seer wel <rhyme label="a" type="m">gheseyt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Maer ick sie haer net soe wide <rhyme label="a" type="m" corresp="#s4:l1">ghespreyt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Hoe sal ick des <rhyme label="b" type="f">ontganghen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Des vyants lagen sijn lanc en <rhyme label="a" type="m" corresp="#s4:l1">breyt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Hi sou ons gerne <rhyme label="b" type="f" corresp="#s4:l3">vangen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nature waer om sidy <rhyme label="a" type="m">versaecht</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Hi is geboren van eender <rhyme label="a" type="m" corresp="#s5:l1">maecht</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Die ghebenedide Gods <rhyme label="b" type="f">sone</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Die des viants macht <rhyme label="a" type="m" corresp="#s5:l1">veriaecht</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Daer om wilt wesen <rhyme label="b" type="f" corresp="#s5:l3">vrome</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O reden ghi moet mi leeren <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Want ickt selue niet en <rhyme label="a" type="m" corresp="#s6:l1">can</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Hoe soude ick des <rhyme label="b" type="f">ghenieten</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Ten is ter werlt vrou noch <rhyme label="a" type="m" corresp="#s6:l1">man</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Ten soude hem <rhyme label="b" type="f" corresp="#s6:l3">verdrieten</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Natuere wilt ghi v seluen wt <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">So wilt des lidens doen <rhyme label="a" type="m" corresp="#s7:l1">vermaen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Dat Cristus leedt doer onse <rhyme label="b" type="f">schout</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Ende peynst o siele ghi hebt <rhyme label="a" type="m" corresp="#s7:l1">misdaen</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Het sal v rouwen <rhyme label="b" type="f" corresp="#s7:l3">menichfout</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dit argueren van desen <rhyme label="a" type="m">tween</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Vinden wi daghelijcx in <rhyme label="a" type="m" corresp="#s8:l1">een</rhyme></l>
        <l id="s8:l3" met="3" type="-+">God geue ons allen sulcke <rhyme label="b" type="f">minne</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Dat ons allen groot ende <rhyme label="a" type="m" corresp="#s8:l1">cleen</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Die redene <rhyme label="b" type="f" corresp="#s8:l3">verwinne</rhyme></l>
      </lg>
    </lg>
  </text>
