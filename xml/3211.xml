  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EVen als de snoode <rhyme label="a" type="f">Motten</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Een uytnement mooy <rhyme label="b" type="m">ghewaedt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Door 'er knabb'len doen <rhyme label="a" type="f" corresp="#s1:l1">verrotten</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat 'et eyndelijck <rhyme label="b" type="m" corresp="#s1:l2">vergaet</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Ach! soo doet een vuyle <rhyme label="c" type="m">klap</rhyme></l>
        <l id="s1:l6" met="4" type="+-">D'alderbeste <rhyme label="c" type="m" corresp="#s1:l5">wetenschap</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Even als de glade <rhyme label="a" type="f">Slecken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Allerhande <rhyme label="b" type="m">mooyigheydt</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Leelijck metter slijm <rhyme label="a" type="f" corresp="#s2:l1">bevlecken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Waer 'et sich maer neder <rhyme label="b" type="m" corresp="#s2:l2">leydt</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Soe bederven goede <rhyme label="c" type="m">ze'en</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Door de onghesouten <rhyme label="c" type="m" corresp="#s2:l5">re'en</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Even als fenijnde <rhyme label="a" type="f">Padden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Menich goedt en heylsaem <rhyme label="b" type="m">kruydt</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Door 'er vuyl vergiff <rhyme label="a" type="f" corresp="#s3:l1">bekladden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat 'et sterft en wortelt <rhyme label="b" type="m" corresp="#s3:l2">uyt</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Soo vermoordt de geyle <rhyme label="c" type="m">vreught</rhyme></l>
        <l id="s3:l6" met="4" type="+-">D'opghepronckte nutte <rhyme label="c" type="m" corresp="#s3:l5">Deught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Even als de vuyle <rhyme label="a" type="f">Wormen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Vaeck de beste bloem en <rhyme label="b" type="m">bla'en</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Met 'er knibbelen <rhyme label="a" type="f" corresp="#s4:l1">bestormen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Ende wel ter neder <rhyme label="b" type="m" corresp="#s4:l2">slaen</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Soo vernielt onkuyssche <rhyme label="c" type="m">minn'</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Hart, ghemoedt, en siel en <rhyme label="c" type="m" corresp="#s4:l5">sin</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Billijck dat wy stadigh <rhyme label="a" type="f">trachten</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Om gheduerigh in den <rhyme label="b" type="m">strijdt</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Onse driften te <rhyme label="a" type="f" corresp="#s5:l1">verachten</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Eer 'et quaedt te diepe <rhyme label="b" type="m" corresp="#s5:l2">glijdt</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Laten wy ter schildtwacht <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Tot 'et strijden is <rhyme label="c" type="m" corresp="#s5:l5">ghedaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
