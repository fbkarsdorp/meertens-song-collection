    <categories/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AL staen staen wy nu als <rhyme label="a" type="f">bloemen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En bloeyen op het <rhyme label="b" type="m">velt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Een ander tijdt sal <rhyme label="a" type="f" corresp="#s1:l1">komen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">dat wy worden <rhyme label="b" type="m" corresp="#s1:l2">verstelt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Want alle vleesch <rhyme label="b" type="m" corresp="#s1:l2">vermelt</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Vergaet ghelijck het <rhyme label="c" type="m">gras</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Vrienden 'tzy u <rhyme label="b" type="m" corresp="#s1:l2">vertelt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">'Tkomt menigen <rhyme label="c" type="m" corresp="#s1:l6">t'onpas</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Recht als den windt door <rhyme label="a" type="f">'twaeyen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die bloem verderft <rhyme label="b" type="m">subijt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo sal al ons <rhyme label="a" type="f" corresp="#s2:l1">verfraeyen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Vergaen in korten <rhyme label="b" type="m" corresp="#s2:l2">tijt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Niemant en krijght <rhyme label="b" type="m" corresp="#s2:l2">respijt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Alst Godt den Heer <rhyme label="c" type="m">behaeght</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die doodt behoudt den <rhyme label="b" type="m" corresp="#s2:l2">strijdt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">'Therte zy ons <rhyme label="c" type="m" corresp="#s2:l6">doorknaeght</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ieughd', gesontheyt end' <rhyme label="a" type="f">'tleven</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Comt ons van Godt den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hy heeft het ons <rhyme label="a" type="f" corresp="#s3:l1">ghegheven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Te bruycken t'sijner <rhyme label="b" type="m" corresp="#s3:l2">eer</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Naer sijn heylsame <rhyme label="b" type="m" corresp="#s3:l2">Leer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Wil hy hebben <rhyme label="c" type="m">gedaen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Of men sal <rhyme label="b" type="m" corresp="#s3:l2">nimmermeer</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Voor hem moghen <rhyme label="c" type="m" corresp="#s3:l6">bestaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">AEN 'tgheen dat wy <rhyme label="a" type="f">bevinden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Moghen wy mercken <rhyme label="b" type="m">fier</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Waer zijn ons lieve <rhyme label="a" type="f" corresp="#s4:l1">vrienden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die voor ons leefden <rhyme label="b" type="m" corresp="#s4:l2">hier</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">Van wormen gh'eten <rhyme label="b" type="m" corresp="#s4:l2">schier</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Al in het aerdtsche <rhyme label="c" type="m">dal</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">'Tis die oude <rhyme label="b" type="m" corresp="#s4:l2">manier</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Wy moeten sterven <rhyme label="c" type="m" corresp="#s4:l6">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">GENeught en 'swerelts <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Seer haestelijck <rhyme label="b" type="m">vergaet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die lust hebben in <rhyme label="a" type="f" corresp="#s5:l1">desen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Salt niet komen te <rhyme label="b" type="m" corresp="#s5:l2">baet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Als haer kranckheyt <rhyme label="b" type="m" corresp="#s5:l2">aenstaet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En men hier scheyden <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Valt het dickwils te <rhyme label="b" type="m" corresp="#s5:l2">laet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Te doen oprechte <rhyme label="c" type="m" corresp="#s5:l6">boet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">By dit en salt niet <rhyme label="a" type="f">blijven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">dat wy gestorven <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wy moeten met den <rhyme label="a" type="f" corresp="#s6:l1">lijven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Comen voor Godts <rhyme label="b" type="m" corresp="#s6:l2">aenschijn</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Om op dennen <rhyme label="b" type="m" corresp="#s6:l2">termijn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Een recht oordeel <rhyme label="c" type="m">t'ontfaen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dan moetens' in de <rhyme label="b" type="m" corresp="#s6:l2">pijn</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Die 'tquaedt hier deden <rhyme label="c" type="m" corresp="#s6:l6">saen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Al die naer 'tvleesch <rhyme label="a" type="f">beseven</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Nu leven, sterven <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Een quade doodt met <rhyme label="a" type="f" corresp="#s7:l1">beven</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Niemant en komt daer <rhyme label="b" type="m" corresp="#s7:l2">van</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">dus elck een nu hy <rhyme label="b" type="m" corresp="#s7:l2">kan</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Neemt sijnen tijdt wel <rhyme label="c" type="m">waer</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die Tarw blijft in den <rhyme label="b" type="m" corresp="#s7:l2">wan</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Het kaf verstuyft te <rhyme label="c" type="m" corresp="#s7:l6">gaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Recht wilt doch nu <rhyme label="a" type="f">opwaecken</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Het gheldt u ziel en <rhyme label="b" type="m">lijf</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En wilt gheen onschult <rhyme label="a" type="f" corresp="#s8:l1">maecken</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Om 'twereltsche <rhyme label="b" type="m" corresp="#s8:l2">bedrijf</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Maer door Christus <rhyme label="b" type="m" corresp="#s8:l2">motijf</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En sijn voorbeeldt <rhyme label="c" type="m">aenschout</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Wie dat nu naevolght <rhyme label="b" type="m" corresp="#s8:l2">stijf</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Sal hebben vast <rhyme label="c" type="m" corresp="#s8:l6">gebout</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Te Laten nu het <rhyme label="a" type="f">quade</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Dat heeft hy ons <rhyme label="b" type="m">geleert</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En worden vroegh en <rhyme label="a" type="f" corresp="#s9:l1">spade</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Al geheele <rhyme label="b" type="m" corresp="#s9:l2">verneert</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Dats 'tgeen dat hy <rhyme label="b" type="m" corresp="#s9:l2">begeert</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En ons te voren <rhyme label="c" type="m">leyt</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">O jeughdigh hert u <rhyme label="b" type="m" corresp="#s9:l2">keert</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Tot der <rhyme label="c" type="m" corresp="#s9:l6">ootmoedigheyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Met Maria wilt <rhyme label="a" type="f">treden</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Tot Christi voeten <rhyme label="b" type="m">daer</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Sy weenden seer <rhyme label="a" type="f" corresp="#s10:l1">beneden</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Wiesch die met tranen <rhyme label="b" type="m" corresp="#s10:l2">klaer</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">den drooghdoeck was van <rhyme label="b" type="m" corresp="#s10:l2">hayr</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En heeftse doen <rhyme label="c" type="m">gekust</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">En die gesalft, daer <rhyme label="b" type="m" corresp="#s10:l2">naer</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Nam sy daer op haer <rhyme label="c" type="m" corresp="#s10:l6">rust</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Van Christo deed' sy <rhyme label="a" type="f">hooren</rhyme>:</l>
        <l id="s11:l2" met="3" type="-+">Mijn Dochter zijt <rhyme label="b" type="m">getroost</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Ghy hebt my <rhyme label="a" type="f" corresp="#s11:l1">uytvercoren</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">En ick heb u <rhyme label="b" type="m" corresp="#s11:l2">verlost</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Gaet in vreden <rhyme label="b" type="m" corresp="#s11:l2">altoost</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">V sond' vergeven <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Vergheet u swaer <rhyme label="b" type="m" corresp="#s11:l2">propoost</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Ghy zijt gesondt <rhyme label="c" type="m" corresp="#s11:l6">gewis</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
