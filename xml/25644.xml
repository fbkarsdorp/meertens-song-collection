  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Gheloeft zijt ghy, O Godt mijn <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die my gaeft int <rhyme label="b" type="f">vercloecken</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Een nieu ghemoedt tot uwer <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">D’eeuwich leven te <rhyme label="b" type="f" corresp="#s1:l2">soecken</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Sterckt my daerin dach ende <rhyme label="c" type="m">nacht</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Tot dat mijn reyse zy <rhyme label="c" type="m" corresp="#s1:l5">volbracht</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En ick naer mijn <rhyme label="d" type="f">verlanghen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">V Rijcke mach <rhyme label="d" type="f" corresp="#s1:l7">ontfanghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Willen dat vind’ ick by my <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Maer Heere gheeft my <rhyme label="b" type="f">t’volbringhen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat ick voorsichtich end’ <rhyme label="a" type="m" corresp="#s2:l1">snel</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Voor d’enghe poort mach <rhyme label="b" type="f" corresp="#s2:l2">dringhen</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">O Here houdt my op den <rhyme label="c" type="m">padt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Tot dat ick come in die <rhyme label="c" type="m" corresp="#s2:l5">Stadt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Daer in kinder <rhyme label="d" type="f">ghepresen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Dan sullen vrolijck <rhyme label="d" type="f" corresp="#s2:l7">wesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Iae mijn droefheyt in blijschap <rhyme label="a" type="m">keert</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ghy weet ick hebb’ <rhyme label="b" type="f">verlaten</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Vader en Moeder lief en <rhyme label="a" type="m" corresp="#s3:l1">weert</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Om uwent wil der <rhyme label="b" type="f" corresp="#s3:l2">maten</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Broeders en susters ick <rhyme label="c" type="m">verliet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dit is gantschelijck daerom <rhyme label="c" type="m" corresp="#s3:l5">gheschiet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Dat ick tot die’t <rhyme label="d" type="f">stonden</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Mocht weerdich zijn <rhyme label="d" type="f" corresp="#s3:l7">bevonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De stem te hooren, als ghy <rhyme label="a" type="m">sult</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Roepen u <rhyme label="b" type="f">uytvercoren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die ghy met troost vervullen <rhyme label="a" type="m" corresp="#s4:l1">sult</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Int eeuwich Rijck te <rhyme label="b" type="f" corresp="#s4:l2">voren</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Langhen tijdt voor haer <rhyme label="c" type="m">bereyt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En duert tot in der <rhyme label="c" type="m" corresp="#s4:l5">eeuwicheyt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">D’welck sy aldaer <rhyme label="d" type="f">vererven</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">‘Bevrijdt van het <rhyme label="d" type="f" corresp="#s4:l7">verderven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Peur u oor, hoort mijn <rhyme label="a" type="m">ghebet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En wilt my wijsheyt <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat ick nu voortaen <rhyme label="a" type="m" corresp="#s5:l1">onbesmet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En gantsch heylich mach <rhyme label="b" type="f" corresp="#s5:l2">leven</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En soo verslijten mijnen <rhyme label="c" type="m">tijdt</rhyme></l>
        <l id="s5:l6" met="4" type="-+">In desen mijnes levens <rhyme label="c" type="m" corresp="#s5:l5">strijdt</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Nu voortaen al mijn <rhyme label="d" type="f">daghen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Nae u Godtlijck <rhyme label="d" type="f" corresp="#s5:l7">behaghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Perfectelijck maeckt my <rhyme label="a" type="m">bequaem</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Mijn beroep te <rhyme label="b" type="f">betrachten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Als u dat is (Heer) <rhyme label="a" type="m" corresp="#s6:l1">aenghenaem</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Wt alle mijnen <rhyme label="b" type="f" corresp="#s6:l2">crachten</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Dat ick mijn jonghe spruyten <rhyme label="c" type="m">teer</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Mach opbringhen nae u <rhyme label="c" type="m" corresp="#s6:l5">begeer</rhyme></l>
        <l id="s6:l7" met="3" type="-+">‘Tot lof van uwer <rhyme label="d" type="f">eeren</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Lief Heer dats mijn <rhyme label="d" type="f" corresp="#s6:l7">begeeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Laetse u doch bevolen <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Gunst bewijst haer van <rhyme label="b" type="f">boven,m</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Soo sal ick u dan dancken <rhyme label="a" type="m" corresp="#s7:l1">fijn</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hoogh prijsen ende <rhyme label="b" type="f" corresp="#s7:l2">loven</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Als ghy dees mijn claeghreden <rhyme label="c" type="m">hoort</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En helpt ons tot den eynde <rhyme label="c" type="m" corresp="#s7:l5">voort</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Ick sal <rhyme label="d" type="f">ghebenedijden</rhyme></l>
        <l id="s7:l8" met="3" type="-+">V Heere t’allen <rhyme label="d" type="f" corresp="#s7:l7">tijden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ras spoet u nu mijn ziel <rhyme label="a" type="m">terstondt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En wilt soo met <rhyme label="b" type="f">beweghen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">All’ Gods goetdaden maken <rhyme label="a" type="m" corresp="#s8:l1">condt</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Om sijn ghenae <rhyme label="b" type="f" corresp="#s8:l2">ghepresen</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Hy is een Godt vriend’lijck en <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Die veel goetdaden aen u <rhyme label="c" type="m" corresp="#s8:l5">doet</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Gheeft hem de eer te <rhyme label="d" type="f">samen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Iae lieve Heere, <rhyme label="d" type="f" corresp="#s8:l7">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
