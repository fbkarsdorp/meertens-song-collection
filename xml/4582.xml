<song>
  <meta>
    <id>4582</id>
    <date>
      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>leuven</orginal-name>
      <standard-name>Leuven, Belgium</standard-name>
      <coordinates>
        <lon>50.879202</lon>
        <lat>4.7011675</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Al hebben de prinsen haar wens</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DIenaer Gods! als g’u te <rhyme label="a" type="m">rust</rhyme>//</l>
        <l id="s1:l2" met="4" type="+-">Wilt be-geven, weest <rhyme label="a" type="m" corresp="#s1:l1">bewust</rhyme>//</l>
        <l id="s1:l3" met="4" type="+-">Dat het Doopsel u <rhyme label="b" type="m">bestroomt</rhyme>//</l>
        <l id="s1:l4" met="4" type="+-">End’ het Chrisma heeft <rhyme label="b" type="m" corresp="#s1:l3">gevroomt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Gaet dan nae een zuiver <rhyme label="a" type="m">bed</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">End’ op dat u geen <rhyme label="a" type="m" corresp="#s2:l1">belet</rhyme></l>
        <l id="s2:l3" met="4" type="+-">En geschie van ’t <rhyme label="b" type="m">hels-gespuis</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Zegent u met Christus <rhyme label="b" type="m" corresp="#s2:l3">kruis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zegendt uw’ gezinde <rhyme label="a" type="m">leen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Voorhoofd, zegg’ ik, en met <rhyme label="a" type="m" corresp="#s3:l1">een</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Hart en boesem. Want hier <rhyme label="b" type="m">door</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Gaet de donk’re magt te <rhyme label="b" type="m" corresp="#s3:l3">loor</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">’t Kruis doed wiken alle <rhyme label="a" type="m">quaed</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">’t Kruis bewaert de <rhyme label="a" type="m" corresp="#s4:l1">middelmaet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">’t Kruis bedwingt d’onreine <rhyme label="b" type="m">vloed</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Van het opgejaegde <rhyme label="b" type="m" corresp="#s4:l3">bloed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">’t Kruis d’onnutte dromen <rhyme label="a" type="m">staekt</rhyme></l>
        <l id="s5:l2" met="4" type="+-">’t Kruis bevredigt, ’t Kruis <rhyme label="a" type="m" corresp="#s5:l1">vermaekt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">’t Kruis verenigt, ’t Kruis <rhyme label="b" type="m">ontwart</rhyme></l>
        <l id="s5:l4" met="4" type="+-">D’onrust van een Christen <rhyme label="b" type="m" corresp="#s5:l3">hart</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wijkt dan Satan, wijkt en <rhyme label="a" type="m">smelt</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Die de slaep zoo dik <rhyme label="a" type="m" corresp="#s6:l1">ontsteldt</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Wijkt voor’t wapen ’t welk ghy <rhyme label="b" type="m">weet</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Dat uw’ hoofd aen stukken <rhyme label="b" type="m" corresp="#s6:l3">spleet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dit zal voor de ziele <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s7:l2" met="4" type="+-">’t Alderzachtste kussen <rhyme label="a" type="m" corresp="#s7:l1">zijn</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">En ter wijl het lichaem <rhyme label="b" type="m">rust</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Reiken een te zoeten <rhyme label="b" type="m" corresp="#s7:l3">lust</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Glory zy den Vader: <rhyme label="a" type="m">Eer</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Christo den gekruisten <rhyme label="a" type="m" corresp="#s8:l1">Heer</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Metten heiligen Geest te <rhyme label="b" type="m">gaer</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Die ons deze nacht <rhyme label="b" type="m" corresp="#s8:l3">bewaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
