    <melody>Een aardig vrouwtje heeft mij bedrogen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Die werelt erch heeft mi <rhyme label="a" type="f">bedroghen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Daer ic op was <rhyme label="b" type="m">vergect</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Haer smeeckende woerden sijn al <rhyme label="a" type="f" corresp="#s1:l1">ghelogen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat vinde ic nu <rhyme label="b" type="m" corresp="#s1:l2">perfect</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Si is mi te seer <rhyme label="b" type="m" corresp="#s1:l2">doertrect</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Seer dobbel oock van <rhyme label="c" type="f">gronden</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Dus keer ic mi van <rhyme label="d" type="m">haer</rhyme></l>
        <l id="s1:l8" met="6" type="-+">Sy payter also vele met haren loosen <rhyme label="c" type="f" corresp="#s1:l6">monde</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Ick en achtse niet een <rhyme label="d" type="m" corresp="#s1:l7">hayr</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och hertekens wilt v sinnekens <rhyme label="a" type="f">keeren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van deser werelt valsch <rhyme label="b" type="m">viant</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Si sal v plucken / en minnen <rhyme label="a" type="f" corresp="#s2:l1">leeren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ia hebdy ghelt wel in v <rhyme label="b" type="m" corresp="#s2:l2">hant</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ick hebber af <rhyme label="b" type="m" corresp="#s2:l2">tverstant</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gaet die werelt heel int <rhyme label="c" type="f">ronde</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Ghi vintse heel <rhyme label="d" type="m">wanckelbaer</rhyme></l>
        <l id="s2:l8" met="6" type="-+">Si paeyter soe vele met haren loosen <rhyme label="c" type="f" corresp="#s2:l6">monde</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Ick en achtse niet een <rhyme label="d" type="m" corresp="#s2:l7">hayr</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nu laet ick eenen anderen sinen tijt <rhyme label="a" type="f">verquisten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van sinnen ionck en <rhyme label="b" type="m">mal</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Want met hare bedriegelike <rhyme label="a" type="f" corresp="#s3:l1">listen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Si v wel bedriegen <rhyme label="b" type="m" corresp="#s3:l2">sal</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ende doen v vallen so menighen swaren <rhyme label="b" type="m" corresp="#s3:l2">val</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Dits daghelijcx <rhyme label="c" type="f">beuonden</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Met haer hier ende <rhyme label="d" type="m">daer</rhyme></l>
        <l id="s3:l8" met="6" type="-+">Si paeyter soe vele met haren loosen <rhyme label="c" type="f" corresp="#s3:l6">monde</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Ick en achtse niet een <rhyme label="d" type="m" corresp="#s3:l7">hayr</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wat heb ic met haer al tijts <rhyme label="a" type="f">versleten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ic en spaerde ghelt noch <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Nu ben ic vander werelt <rhyme label="a" type="f" corresp="#s4:l1">vergeten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Haer bedroch yst diet mi <rhyme label="b" type="m" corresp="#s4:l2">doet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dies ic natuer bedwinghen <rhyme label="b" type="m" corresp="#s4:l2">moet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Des bin ic vrolijc in alle <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Dat seg ick v <rhyme label="d" type="m">voerwaer</rhyme></l>
        <l id="s4:l8" met="6" type="-+">Sy paeyter so vele met haren valschen <rhyme label="c" type="f" corresp="#s4:l6">monde</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Ick en achtse niet een <rhyme label="d" type="m" corresp="#s4:l7">hayr</rhyme></l>
      </lg>
    </lg>
  </text>
