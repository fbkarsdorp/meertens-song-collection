  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Wie 't lust, sta <rhyme label="a" type="m">by</rhyme>.</l>
        <l id="s1:l2" met="1" type="-+">Wyl <rhyme label="a" type="m" corresp="#s1:l1">wy</rhyme>,</l>
        <l id="s1:l3" met="1" type="-+">Gants <rhyme label="a" type="m" corresp="#s1:l1">bly</rhyme></l>
        <l id="s1:l4" met="1" type="-+">En <rhyme label="a" type="m" corresp="#s1:l1">vry</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Van <rhyme label="a" type="m" corresp="#s1:l1">slavery</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Der laffe <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Ons baden <rhyme label="b" type="m" corresp="#s1:l6">in</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Een vreugd voor ziel en <rhyme label="b" type="m" corresp="#s1:l6">sin</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">Trots alle minne <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Sal vader Libers <rhyme label="c" type="m" corresp="#s1:l9">wijn</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Alleen ons vreugde <rhyme label="c" type="m" corresp="#s1:l9">zijn</rhyme>.</l>
        <l id="s1:l12" met="4" type="+-">Wie wil, knield voor de <rhyme label="d" type="m">throon</rhyme></l>
        <l id="s1:l13" met="3" type="+-">Van Venus en haar <rhyme label="d" type="m" corresp="#s1:l12">soon</rhyme>.</l>
        <l id="s1:l14" met="3" type="+-">Wie eens gedronken <rhyme label="e" type="m">heeft</rhyme></l>
        <l id="s1:l15" met="3" type="+-">Van 't nat dat Baggus <rhyme label="e" type="m" corresp="#s1:l14">geeft</rhyme>,</l>
        <l id="s1:l16" met="4" type="+-">Voeld dat zijn hert vol vreugd <rhyme label="e" type="m" corresp="#s1:l14">herleefd</rhyme>.</l>
        <l id="s1:l17" met="3" type="+-">Wie lust heeft sta dan <rhyme label="a" type="m" corresp="#s1:l1">by</rhyme>:</l>
        <l id="s1:l18" met="3" type="+-">Wy drinken zy aan <rhyme label="a" type="m" corresp="#s1:l1">zy</rhyme></l>
        <l id="s1:l19" met="3" type="+-">De uytvaard van 't <rhyme label="a" type="m" corresp="#s1:l1">gevry</rhyme></l>
        <l id="s1:l20" met="3" type="+-">En minne <rhyme label="a" type="m" corresp="#s1:l1">slaverny</rhyme>.</l>
      </lg>
    </lg>
