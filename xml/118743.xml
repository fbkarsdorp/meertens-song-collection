      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Tot Christum mijnen <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ick my alleene <rhyme label="a" type="m" corresp="#s1:l1">keer</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Ick vindt in hem na mijn <rhyme label="a" type="m" corresp="#s1:l1">begeer</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Al wat ick immer wenschen <rhyme label="b" type="m">sal</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Hy is my alles en in <rhyme label="b" type="m" corresp="#s1:l4">all'</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wanneer my mijne <rhyme label="a" type="m">sondt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Verbrijseldt en <rhyme label="a" type="m" corresp="#s2:l1">verwondt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wil hy my maken weer <rhyme label="a" type="m" corresp="#s2:l1">gesondt</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Wanneer ick sieck ben ende <rhyme label="b" type="m">quyn</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Is hy mijn stercke <rhyme label="b" type="m" corresp="#s2:l4">medecijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wanneer ick ben <rhyme label="a" type="m">vermoeit</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Belast en swaer <rhyme label="a" type="m" corresp="#s3:l1">geboeit</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hy op mijn ziel verquickingh <rhyme label="a" type="m" corresp="#s3:l1">sproeit</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En geeft my, na mijns herten <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Seer lieflick ware vreughdt en <rhyme label="b" type="m" corresp="#s3:l4">rust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als my de Satan <rhyme label="a" type="m">queldt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En grootelicks <rhyme label="a" type="m" corresp="#s4:l1">ontsteldt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Verdrijft hem desen stercken <rhyme label="a" type="m" corresp="#s4:l1">heldt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Ia veldt hem neder door sijn <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Soo dat ick al sijn list niet <rhyme label="b" type="m" corresp="#s4:l4">acht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Is mijnen honger <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hy is het leevend' <rhyme label="a" type="m" corresp="#s5:l1">broodt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ia selfs een spijse voor de <rhyme label="a" type="m" corresp="#s5:l1">doodt</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Wanneer ick brande schier van <rhyme label="b" type="m">dorst</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Kan hy haest laven mijne <rhyme label="b" type="m" corresp="#s5:l4">dorst</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ben ick in <rhyme label="a" type="m">duisternis</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Soo weet ick doch <rhyme label="a" type="m" corresp="#s6:l1">gewis</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat hy mijn licht en duister <rhyme label="a" type="m" corresp="#s6:l1">is</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dees' Sonne der <rhyme label="b" type="m">gerechtigheidt</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">My t'mijnen besten altijdt <rhyme label="b" type="m" corresp="#s6:l4">leidt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O Iesu, gy zijdt <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En ick ben altijdt <rhyme label="a" type="m" corresp="#s7:l1">dijn</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Laet onse liefdens-bandt doch <rhyme label="a" type="m" corresp="#s7:l1">zijn</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Soo vast gebonden, dat nooit <rhyme label="b" type="m">weer</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Die zy verbroken <rhyme label="b" type="m" corresp="#s7:l4">immermeer</rhyme>.</l>
      </lg>
    </lg>
  </text>
