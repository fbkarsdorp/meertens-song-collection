<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11887</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Ich dank dir lieber Herr</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GElijck de nacht, de <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gestadigh volgen <rhyme label="b" type="m">nae</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Na 't Sonneschijn, de <rhyme label="a" type="f" corresp="#s1:l1">vlagen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">De smert op wellust <rhyme label="b" type="m" corresp="#s1:l2">drae</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Soo hebt ghy Heer de <rhyme label="c" type="f">tijden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dus aerdigh <rhyme label="d" type="m">af-gedeelt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dat blijdschap, en weer <rhyme label="c" type="f" corresp="#s1:l5">lijden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Daer door wert <rhyme label="d" type="m" corresp="#s1:l6">af-gebeelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Nu is de dagh ten <rhyme label="a" type="f">eynde</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De donckre nacht <rhyme label="b" type="m">genaeckt</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Heer! wilt u tot ons <rhyme label="a" type="f" corresp="#s2:l1">wenden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En onse rust <rhyme label="b" type="m" corresp="#s2:l2">volmaeckt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Na dien soo mensch als <rhyme label="c" type="f">dieren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Zijn in den nacht <rhyme label="d" type="m">bevreest</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Wilt dan ons slaep <rhyme label="c" type="f" corresp="#s2:l5">bestieren</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Met uwen goeden <rhyme label="d" type="m" corresp="#s2:l6">Geest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">V Engels, 's Hemels <rhyme label="a" type="f">booden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Laet die ons Wachters <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Op dat s' in alle <rhyme label="a" type="f" corresp="#s3:l1">nooden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Verquicken onse <rhyme label="b" type="m" corresp="#s3:l2">pijn</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Op dat geen slaep der <rhyme label="c" type="f">sonde</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Maer eene Heylge <rhyme label="d" type="m">rust</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Wierd' in ons ziel <rhyme label="c" type="f" corresp="#s3:l5">bevonden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Vol wackerheyt en <rhyme label="d" type="m" corresp="#s3:l6">lust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Vergeef daerom ons <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die daeghlijcks zijn <rhyme label="b" type="m">geschiet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Verbergh die in u <rhyme label="a" type="f" corresp="#s4:l1">wonden</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">O Heer! gedencktse <rhyme label="b" type="m" corresp="#s4:l2">niet</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Bedeckt ons met u <rhyme label="c" type="f">vlercken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En schenckt ons u <rhyme label="d" type="m">genae</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Op dat wy mogen <rhyme label="c" type="f" corresp="#s4:l5">mercken</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">V goedheyd vroegh en <rhyme label="d" type="m" corresp="#s4:l6">spae</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">En als ons glas <rhyme label="a" type="f">verloopen</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Des levens draet snijt <rhyme label="b" type="m">af</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Dat wy dan niet <rhyme label="a" type="f" corresp="#s5:l1">wanhoopen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Noch blijven in het <rhyme label="b" type="m" corresp="#s5:l2">graf</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Laet ons in Christo <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat wy ter blijder <rhyme label="d" type="m">dagh</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Ons in die vreughd <rhyme label="c" type="f" corresp="#s5:l5">begeven</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Die noyt geen oogh <rhyme label="d" type="m" corresp="#s5:l6">besagh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hier op soo rust o <rhyme label="a" type="f">ziele</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">En slaep in Gode <rhyme label="b" type="m">stil</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die sal den dood <rhyme label="a" type="f" corresp="#s6:l1">vernielen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Na sijn almachte <rhyme label="b" type="m" corresp="#s6:l2">wil</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Want sluymeren noch <rhyme label="c" type="f">slapen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Bevanght hem <rhyme label="d" type="m">immermeer</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Dus grijpt 't geloovigh <rhyme label="c" type="f" corresp="#s6:l5">wapen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">En rust in God den <rhyme label="d" type="m" corresp="#s6:l6">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
