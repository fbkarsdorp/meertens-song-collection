    <tags/>
    <melody>Es ist das Heil uns kommen her</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O! Hemel, open doch uw <rhyme label="a" type="m">oogh</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Siet aen mijn bitter <rhyme label="b" type="f">schreyen</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Mijn Vader! hoor doch van om <rhyme label="a" type="m" corresp="#s1:l1">hoogh</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Mijn bidden, suchten, <rhyme label="b" type="f" corresp="#s1:l2">vleyen</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Mijn ziel' gewondt, en seer <rhyme label="c" type="m">beknelt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Is gansch verslagen, en <rhyme label="c" type="m" corresp="#s1:l5">ontstelt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">O! goedtheydt wiltse <rhyme label="d" type="f">paeyen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn swackheydt, Heer! die druckt my <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Mijn feylen my <rhyme label="b" type="f">verdrieten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om dat mijn goedt voornemen, <rhyme label="a" type="m" corresp="#s2:l1">Heer</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Soo dickwils komt t' <rhyme label="b" type="f" corresp="#s2:l2">ontschieten</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Als ick het hertelijck neem <rhyme label="c" type="m">voor</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dan vloeyt 'et wel weer licht'lijck <rhyme label="c" type="m" corresp="#s2:l5">door</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En gaet geheel te <rhyme label="d" type="f">niete</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als ick somtijdts wat seggen <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Tot lof van uwen <rhyme label="b" type="f">name</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Of stichten sal uw <rhyme label="a" type="m" corresp="#s3:l1">lief-getal</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wanneer sy zijn te <rhyme label="b" type="f" corresp="#s3:l2">same</rhyme></l>
        <l id="s3:l5" met="4" type="-+">O Heer! ick ben te stil, te <rhyme label="c" type="m">stom</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Te laeuw, te traegh, onwetend', <rhyme label="c" type="m" corresp="#s3:l5">dom</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">O wee! ick moet my <rhyme label="d" type="f">schamen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Of als ick heb een plicht te <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">O Heer! ick ben te <rhyme label="b" type="f">trage</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">'t Is al, op een ander <rhyme label="a" type="m" corresp="#s4:l1">saeysoen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dan sal ick u <rhyme label="b" type="f" corresp="#s4:l2">behagen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">'t Is dan, of dan, of dan, sal <rhyme label="c" type="m">ick</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Tot dat ick eynd'lijck in de <rhyme label="c" type="m" corresp="#s4:l5">strick</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Mijn hert gevoel, in <rhyme label="d" type="f">knagen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Of soo ick my begeef in 't <rhyme label="a" type="m">perck</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Mijn plichten te <rhyme label="b" type="f">volbringen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">'t Is Heer! maer nietigh, en <rhyme label="a" type="m" corresp="#s5:l1">stuckwerck</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'t Sijn onvolmaeckte <rhyme label="b" type="f" corresp="#s5:l2">dingen</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Het kan de proef verdragen <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Dit is mijn hert, en <rhyme label="c" type="m" corresp="#s5:l5">ziels-verdriet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En 't doet my droevigh <rhyme label="d" type="f">singen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dit doet my uyt mijn selven <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Mijn selve seer <rhyme label="b" type="f">mishagen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dit doet mijn ziele wonden <rhyme label="a" type="m" corresp="#s6:l1">slaen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dit doet my anghstigh <rhyme label="b" type="f" corresp="#s6:l2">klagen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Dit werpt my voor uw' voeten <rhyme label="c" type="m">neer</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dit doet my innigh suchten, <rhyme label="c" type="m" corresp="#s6:l5">Heer</rhyme>!</l>
        <l id="s6:l7" met="3" type="-+">Och! mocht ick u <rhyme label="d" type="f">behagen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och! mocht ick uyt uw volle <rhyme label="a" type="m">vloedt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Mijn nietigheydt <rhyme label="b" type="f">vergoeden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Och! mocht doch eens dat groote <rhyme label="a" type="m" corresp="#s7:l1">goedt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Uw' zegenrijcke <rhyme label="b" type="f" corresp="#s7:l2">vloeden</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Mijn schuldt betalen, en <rhyme label="c" type="m">voldoen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Mijn ziel gaf u een <rhyme label="c" type="m" corresp="#s7:l5">liefde-soen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">En soud' van blijdtschap <rhyme label="d" type="f">woeden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel Heer! hoor dan, en siet my <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Siet hoe de <rhyme label="b" type="f">Kananijten</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Mijn zijd' en ziele wonden <rhyme label="a" type="m" corresp="#s8:l1">slaen</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Hoe sy knagen en <rhyme label="b" type="f" corresp="#s8:l2">bijten</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Siet hoe mijn herte is <rhyme label="c" type="m">ontrust</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Tot dat het van u wordt <rhyme label="c" type="m" corresp="#s8:l5">gekust</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Als een lief <rhyme label="d" type="f">Israelijte</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Mijn ziel wil u niet laten <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">In ruste, en in <rhyme label="b" type="f">vreede</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Eer ghy voldoet al haer <rhyme label="a" type="m" corresp="#s9:l1">begeer</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En uw' goetheydt deelt <rhyme label="b" type="f" corresp="#s9:l2">meede</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Sy wil met Jacob houden <rhyme label="c" type="m">an</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Tot dat sy u verwinnen <rhyme label="c" type="m" corresp="#s9:l5">kan</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En eerder niet wegh <rhyme label="d" type="f">treeden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wilt dat van my in 't goed' <rhyme label="a" type="m">ontfaen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">U niet te seer <rhyme label="b" type="f">ontstellen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat u een worm komt spreecken <rhyme label="a" type="m" corresp="#s10:l1">aen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">En u dickwils komt <rhyme label="b" type="f" corresp="#s10:l2">quellen</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Wilt na genaad', en niet na <rhyme label="c" type="m">recht</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Doch hand'len met uw' swacke <rhyme label="c" type="m" corresp="#s10:l5">Knecht</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Die anders voer ter <rhyme label="d" type="f">Helle</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Om Jesus, uwen lieven <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Mijn Bruydegom <rhyme label="b" type="f">ydoone</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Om sijn verdiensten, <rhyme label="a" type="m" corresp="#s11:l1">overschoon</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Soo wilt my doch <rhyme label="b" type="f" corresp="#s11:l2">verschoonen</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Mijn Hoogen-Priester! bidt voor <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Dat ick door u mach worden <rhyme label="c" type="m" corresp="#s11:l5">vry</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">En eeuwigh by u <rhyme label="d" type="f">woonen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Noch eens mijn waerde lieve <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s12:l2" met="3" type="-+">Is dit mijn herts <rhyme label="b" type="f">begeere</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Dat ghy mijn swackheydt, meer en <rhyme label="a" type="m" corresp="#s12:l1">meer</rhyme></l>
        <l id="s12:l4" met="3" type="-+">In sterckheydt wilt <rhyme label="b" type="f" corresp="#s12:l2">verkeeren</rhyme>.</l>
        <l id="s12:l5" met="4" type="-+">Dan sal ick moedigh als een <rhyme label="c" type="m">Heldt</rhyme></l>
        <l id="s12:l6" met="4" type="-+">En Ridderlijck, behouden 't <rhyme label="c" type="m" corresp="#s12:l5">Veldt</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">En strijden tot uw' <rhyme label="d" type="f">eere</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Och! mach dit zijn? soo laet het <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Dit was mijn groote <rhyme label="b" type="f">luste</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Dat ghy mijn hert en <rhyme label="a" type="m" corresp="#s13:l1">ziels-gepijn</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Verkeerd', in soete <rhyme label="b" type="f" corresp="#s13:l2">ruste</rhyme>.</l>
        <l id="s13:l5" met="4" type="-+">Dat ghy my swacke, maeckte <rhyme label="c" type="m">sterck</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Gewis ick bleef getrouw, in 't <rhyme label="c" type="m" corresp="#s13:l5">perck</rhyme></l>
        <l id="s13:l7" met="3" type="-+">Tot aen uw' <rhyme label="d" type="f">Hemel-kuste</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Wel Vader! siet dan aen mijn <rhyme label="a" type="m">noodt</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Wilt my doch niet <rhyme label="b" type="f">versmade</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Verleen uw Kindt uw daeg'lijcks <rhyme label="a" type="m" corresp="#s14:l1">Broodt</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Uw' goedtheydt en <rhyme label="b" type="f" corresp="#s14:l2">genade</rhyme>:</l>
        <l id="s14:l5" met="4" type="-+">Uw' Hemels schatten open <rhyme label="c" type="m">sluyt</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Verleen mijn ziel een goede <rhyme label="c" type="m" corresp="#s14:l5">buyt</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Bid' ick vroegh ende <rhyme label="d" type="f">spade</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
