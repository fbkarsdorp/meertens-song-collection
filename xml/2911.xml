<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>2911</id>
    <date>
      <year-start>1624</year-start>
      <year-end>1624</year-end>
    </date>
    <location>
      <orginal-name>[hoorn]</orginal-name>
      <standard-name>Hoorn, The Netherlands</standard-name>
      <coordinates>
        <lon>52.653272</lon>
        <lat>5.0735802</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Eer gij vriend van hier vertrekt</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EEr gy, vriend, van hier <rhyme label="a" type="m">vertrekt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Wilt my, bid ik, doch <rhyme label="b" type="f">gedenken</rhyme>.</l>
        <l id="s1:l3" met="4" type="+-">En met rijm dat troost <rhyme label="a" type="m" corresp="#s1:l1">verwekt</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Gunstig onverdient <rhyme label="b" type="f" corresp="#s1:l2">beschenken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Schenkt my van de troostel <rhyme label="a" type="m">wijn</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Waer met d'opper-schenker <rhyme label="b" type="f">vulden</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Vwe kruyk in druk en <rhyme label="a" type="m" corresp="#s2:l1">pijn</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die 't u al deed' duldig <rhyme label="b" type="f" corresp="#s2:l2">dulden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zorge, ziekte, <rhyme label="a" type="m">herte-leyd</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">My gestadelijk <rhyme label="b" type="f">omringen</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Wroeging my een nette <rhyme label="a" type="m" corresp="#s3:l1">breyd</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Dat mijn ziel niet kan <rhyme label="b" type="f" corresp="#s3:l2">ontspringen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Licht u wondert dat ik <rhyme label="a" type="m">ga</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Tot een die heeft meerder <rhyme label="b" type="f">lijden</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">'k Weet niet vriend, maer ik <rhyme label="a" type="m" corresp="#s4:l1">versta</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Dat gy vaster zijt in 't <rhyme label="b" type="f" corresp="#s4:l2">strijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Elck zijn quale zwaarder <rhyme label="a" type="m">weegt</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Doch die Godes gunst mag <rhyme label="b" type="f">nutten</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Zich in geen gevaar <rhyme label="a" type="m" corresp="#s5:l1">beweegt</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Door d'onwankelbare <rhyme label="b" type="f" corresp="#s5:l2">stutten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Of my ziekte, druk, <rhyme label="a" type="m">gevaar</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Ballingschap, ja dood <rhyme label="b" type="f">omranden</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Smaakt' ik Godes gunste <rhyme label="a" type="m" corresp="#s6:l1">maar</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Breken zoud' ik al hun <rhyme label="b" type="f" corresp="#s6:l2">banden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maar Gods trooste, gunst of <rhyme label="a" type="m">geest</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Kan ik in mijn ziel niet <rhyme label="b" type="f">smaken</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">'t Lijf geplaagt, de ziel <rhyme label="a" type="m" corresp="#s7:l1">bevreest</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Lijdens troost vergeefs na <rhyme label="b" type="f" corresp="#s7:l2">haken</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Dit is, vriend, mijn <rhyme label="a" type="m">opper-quaal</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Quale grootst van alle <rhyme label="b" type="f">qualen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Daer by mijn deuk <rhyme label="a" type="m" corresp="#s8:l1">altemaal</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Weerdig niet is om <rhyme label="b" type="f" corresp="#s8:l2">verhalen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Hoewel ik mijn qualen <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s9:l2" met="4" type="+-">('t Zy bekend' of zeer <rhyme label="b" type="f">verborgen</rhyme>)</l>
        <l id="s9:l3" met="4" type="+-">Wel zoo zwaar om zwelgen, <rhyme label="a" type="m" corresp="#s9:l1">dat</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Menig zoud daer an <rhyme label="b" type="f" corresp="#s9:l2">verworgen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">'k Weet de tijd die alles <rhyme label="a" type="m">slijt</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Slijt het tijdelijke <rhyme label="b" type="f">lijden</rhyme>:</l>
        <l id="s10:l3" met="4" type="+-">'t Lijden maakt geen ziel <rhyme label="a" type="m" corresp="#s10:l1">onblijd</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Dien Gods geest en gunst <rhyme label="b" type="f" corresp="#s10:l2">verblijden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Maar die ziel en lichaams <rhyme label="a" type="m">heyl</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Mist, die treed onwisse <rhyme label="b" type="f">treden</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Struykelt op den weg <rhyme label="a" type="m" corresp="#s11:l1">onveyl</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Valt en breekt vast al zijn <rhyme label="b" type="f" corresp="#s11:l2">leden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Vanden drank u <rhyme label="a" type="m">toegedeelt</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Deelt my weder in 't <rhyme label="b" type="f">medoogen</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Eer mijn quaal te veel <rhyme label="a" type="m" corresp="#s12:l1">verveelt</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">En ik werd in 't graf <rhyme label="b" type="f" corresp="#s12:l2">getogen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Van den sterksten gy <rhyme label="a" type="m">gesterkt</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">En getroost door <rhyme label="b" type="f">d'opper-Hoeder</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Door Gods geest (die in u <rhyme label="a" type="m" corresp="#s13:l1">werkt</rhyme>)</l>
        <l id="s13:l4" met="4" type="+-">Bid ik, troost u <rhyme label="b" type="f" corresp="#s13:l2">mede-broeder</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Eer gy dan vertrekket <rhyme label="a" type="m">vriend</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Neempt my eens in u <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">En my met u gaven <rhyme label="a" type="m" corresp="#s14:l1">dient</rhyme></l>
        <l id="s14:l4" met="4" type="+-">Om mijn ziele-zeer te <rhyme label="b" type="f" corresp="#s14:l2">zachten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
