<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24533</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="afscheidslied" translation="farewell song">afscheidslied</tag>
    </tags>
    <melody>Och lig dij nu en slaapt</melody>
    <categories>
      <category translation="occasions">gelegenheden</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ic hoerden op eenre mergen <rhyme label="a" type="m">stont</rhyme></l>
        <l id="s1:l2" met="3" type="-+">dat scheyden seer <rhyme label="b" type="f">beclagen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">dat scheyden heeft myn hert <rhyme label="a" type="m" corresp="#s1:l1">doerwont</rhyme></l>
        <l id="s1:l4" met="3" type="-+">gebracht in groter <rhyme label="b" type="f" corresp="#s1:l2">varen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Myn hert dat was in groter <rhyme label="a" type="m">pyn</rhyme></l>
        <l id="s2:l2" met="3" type="-+">dat scheyden most ic <rhyme label="b" type="f">leren</rhyme></l>
        <l id="s2:l3" met="4" type="-+">natuer die heeft soe mennyghen  <rhyme label="a" type="m" corresp="#s2:l1">deer</rhyme></l>
        <l id="s2:l4" met="3" type="-+">eer sy oer kan <rhyme label="b" type="f" corresp="#s2:l2">omkeren</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nv scheyden wy nv scheyden <rhyme label="a" type="m">wy</rhyme></l>
        <l id="s3:l2" met="3" type="-+">och dat moet ommer <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">soe wie heer Jhesus mynne <rhyme label="a" type="m" corresp="#s3:l1">draget</rhyme></l>
        <l id="s3:l4" met="3" type="-+">sal scheydens wal <rhyme label="b" type="f" corresp="#s3:l2">genesen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nv scheyden wy nv scheyden <rhyme label="a" type="m">wy</rhyme></l>
        <l id="s4:l2" met="3" type="-+">ende dat moet ommer <rhyme label="b" type="f">syn</rhyme></l>
        <l id="s4:l3" met="4" type="-+">dat ic gescheyden niet en <rhyme label="a" type="m" corresp="#s4:l1">kan</rhyme></l>
        <l id="s4:l4" met="3" type="-+">dat is mynre herten grote <rhyme label="b" type="f" corresp="#s4:l2">pyn</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Scheyden is een edel <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">diet wal gelic kan <rhyme label="b" type="f">dragen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">sy wanderen inder mynnen <rhyme label="a" type="m" corresp="#s5:l1">pat</rhyme></l>
        <l id="s5:l4" met="3" type="-+">die scheyden sonder <rhyme label="b" type="f" corresp="#s5:l2">clagen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Scheyden is een bitter <rhyme label="a" type="m">woert</rhyme></l>
        <l id="s6:l2" met="3" type="-+">des weerde ic wal <rhyme label="b" type="f">ontware</rhyme></l>
        <l id="s6:l3" met="4" type="-+">sceyden heeft myn hert <rhyme label="a" type="m" corresp="#s6:l1">gescoert</rhyme></l>
        <l id="s6:l4" met="3" type="-+">ghebracht in groter <rhyme label="b" type="f" corresp="#s6:l2">varen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dat ic dat scheyden niet en <rhyme label="a" type="m">kan</rhyme></l>
        <l id="s7:l2" met="3" type="-+">dat moe ic nv <rhyme label="b" type="f">besueren</rhyme></l>
        <l id="s7:l3" met="4" type="-+">scheyden heeft myn hert <rhyme label="a" type="m" corresp="#s7:l1">doerwont</rhyme></l>
        <l id="s7:l4" met="3" type="-+">gebracht in groten <rhyme label="b" type="f" corresp="#s7:l2">trueren</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als ic wal seker waenden te <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">soe waerde ic nae <rhyme label="b" type="f">bedraegen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">scheyden is een <rhyme label="a" type="m" corresp="#s8:l1">medecyn</rhyme></l>
        <l id="s8:l4" met="3" type="-+">ic byn daer mede <rhyme label="b" type="f" corresp="#s8:l2">ontvlagen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">God geue dat hi moet syn <rhyme label="a" type="m">verblyt</rhyme></l>
        <l id="s9:l2" met="3" type="-+">syn hert in doegden <rhyme label="b" type="f">fyn</rhyme></l>
        <l id="s9:l3" met="4" type="-+">die dit lietken heeft <rhyme label="a" type="m" corresp="#s9:l1">gedicht</rhyme></l>
        <l id="s9:l4" met="3" type="-+">scheyden was hem grote <rhyme label="b" type="f" corresp="#s9:l2">pyn</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
