    <melody>Moet ik dus lang een balling zijn</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MOet ick dus langh een ballinck <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Van u ghescheyden, Lief, in <rhyme label="a" type="m" corresp="#s1:l1">pijn</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">In bitter <rhyme label="b" type="m">smert</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van een doorschoten <rhyme label="b" type="m" corresp="#s1:l3">hert</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">O soete Iesv hoochste <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Die met u schoonheydt my doet <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Altijt <rhyme label="c" type="m" corresp="#s1:l5">onverheucht</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Dat ick u moet <rhyme label="d" type="f" corresp="#s1:l6">derven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O mijn swaer lichaems herden <rhyme label="a" type="m">bandt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die my 't gheniet mijns Vaders <rhyme label="a" type="m" corresp="#s2:l1">landt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Soo langh <rhyme label="b" type="m">benemt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">My van mijn goedt <rhyme label="b" type="m" corresp="#s2:l3">vervremt</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">O soete Iesv hoochste <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die met u schoonheydt my doet <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Altijt <rhyme label="c" type="m" corresp="#s2:l5">onverheucht</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Dat ick u moet <rhyme label="d" type="f" corresp="#s2:l6">derven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat dat ick hier op aerde <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Oft van wat schepsel ick my <rhyme label="a" type="m" corresp="#s3:l1">dien</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">'t Is m' al <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">'t Is pijn en anders <rhyme label="b" type="m" corresp="#s3:l3">niet</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">O soete Iesv hoochste <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Die met u schoonheydt my doet <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Altijt <rhyme label="c" type="m" corresp="#s3:l5">onverheucht</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Dat ick u moet <rhyme label="d" type="f" corresp="#s3:l6">derven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy zijt alleen die my maect <rhyme label="a" type="m">bly</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Om u soo roep ick t' allen <rhyme label="a" type="m" corresp="#s4:l1">ty</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Hier in dit <rhyme label="b" type="m">dal</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Berooft van mijnen <rhyme label="b" type="m" corresp="#s4:l3">Al</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">O soete Iesv hoochste <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Die met u schoonheydt my doet <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Altijt <rhyme label="c" type="m" corresp="#s4:l5">onverheucht</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Dat ick u moet <rhyme label="d" type="f" corresp="#s4:l6">derven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hier in dit dal vol strijt en <rhyme label="a" type="m">druck</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Vol van bedroch, vol <rhyme label="a" type="m" corresp="#s5:l1">ongheluck</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Vol bitter <rhyme label="b" type="m">gal</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">O droevich lijdich <rhyme label="b" type="m" corresp="#s5:l3">dal</rhyme>!</l>
        <l id="s5:l5" met="4" type="-+">O soete Iesv hoochste <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Die met u schoonheydt my doet <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Altijt <rhyme label="c" type="m" corresp="#s5:l5">onverheucht</rhyme></l>
        <l id="s5:l8" met="3" type="+-">Dat ick u moet <rhyme label="d" type="f" corresp="#s5:l6">derven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daerom blijf ick hier <rhyme label="a" type="m">ongherust</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Naer u soet wesen seer <rhyme label="a" type="m" corresp="#s6:l1">belust</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Mijn ziel die <rhyme label="b" type="m">claecht</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Naer u soo seer die <rhyme label="b" type="m" corresp="#s6:l3">jaeght</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">O soete Iesv hoochste <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Die met u schoonheydt my doet <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Altijt <rhyme label="c" type="m" corresp="#s6:l5">onverheucht</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Dat ick u moet <rhyme label="d" type="f" corresp="#s6:l6">derven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ontbindt mijn ziel dan, 't is hooch <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Siet aen den dorst die sy hier <rhyme label="a" type="m" corresp="#s7:l1">lijdt</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Naer u, o <rhyme label="b" type="m">vloet</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van het waerachtigh <rhyme label="b" type="m" corresp="#s7:l3">goedt</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">O soete Iesv hoochste <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Die met u schoonheydt my doet <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Altijt <rhyme label="c" type="m" corresp="#s7:l5">onverheucht</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Dat ick u moet <rhyme label="d" type="f" corresp="#s7:l6">derven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O blijden dach, o ur' die <rhyme label="a" type="m">my</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Sal van dit lichaem maken <rhyme label="a" type="m" corresp="#s8:l1">vry</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Sal in <rhyme label="b" type="m">gheniet</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Verkeeren dit <rhyme label="b" type="m" corresp="#s8:l3">verdriet</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">O soete Iesv hoochste <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Die met u schoonheydt my doet <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">Altijt <rhyme label="c" type="m" corresp="#s8:l5">onverheucht</rhyme></l>
        <l id="s8:l8" met="3" type="+-">Dat ick u moet <rhyme label="d" type="f" corresp="#s8:l6">derven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">'t Gheniet van u, oneyndich <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dat allen hert dan rusten <rhyme label="a" type="m" corresp="#s9:l1">doet</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">O volle <rhyme label="b" type="m">zee</rhyme>!</l>
        <l id="s9:l4" met="3" type="-+">Die wech nemt alle <rhyme label="b" type="m" corresp="#s9:l3">wee</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">O soete Iesv hoochste <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Die met u schoonheydt my doet <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s9:l7" met="3" type="+-">Altijt <rhyme label="c" type="m" corresp="#s9:l5">onverheucht</rhyme></l>
        <l id="s9:l8" met="3" type="+-">Dat ick u moet <rhyme label="d" type="f" corresp="#s9:l6">derven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
