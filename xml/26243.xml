    <melody>Ga nu naar Bloemendaal</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Christen broeders <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Die zijt in <rhyme label="b" type="f">t'leven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wilt u groot ende <rhyme label="a" type="m" corresp="#s1:l1">smal</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Tot deucht <rhyme label="b" type="f" corresp="#s1:l2">begheven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En denckt doch op den <rhyme label="c" type="m">tijt</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Die naer sal <rhyme label="d" type="f">komen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Op dat hy moecht <rhyme label="c" type="m" corresp="#s1:l5">bevrijt</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Zijn van <rhyme label="d" type="f" corresp="#s1:l6">t'verdomen</rhyme>:</l>
        <l id="s1:l9" met="3" type="-+">Met een seer milde <rhyme label="e" type="m">hant</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Doet den Armen <rhyme label="e" type="m" corresp="#s1:l9">bystant</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">So sal den Helschen <rhyme label="e" type="m" corresp="#s1:l9">brant</rhyme></l>
        <l id="s1:l12" met="2" type="-+">V niet doen <rhyme label="d" type="f" corresp="#s1:l6">schromen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Gods segen zal met <rhyme label="a" type="m">spoet</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Sulck een <rhyme label="b" type="f">genieten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die den Armen wel <rhyme label="a" type="m" corresp="#s2:l1">doet</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Sonder <rhyme label="b" type="f" corresp="#s2:l2">verdrieten</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Daerom als ghy haer <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Met naeckte <rhyme label="d" type="f">leden</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">V bystant haer dan <rhyme label="c" type="m" corresp="#s2:l5">biet</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">En wiltse <rhyme label="d" type="f" corresp="#s2:l6">cleden</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">Wilt haer breken u <rhyme label="e" type="m">broot</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Als sy hier lijden <rhyme label="e" type="m" corresp="#s2:l9">noot</rhyme>:</l>
        <l id="s2:l11" met="3" type="+-">Want in Abrahams <rhyme label="e" type="m" corresp="#s2:l9">schoot</rhyme></l>
        <l id="s2:l12" met="2" type="-+">Sult ghy dan <rhyme label="d" type="f" corresp="#s2:l6">treden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al is u macht seer <rhyme label="a" type="m">cleyn</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Wilt doch niet <rhyme label="b" type="f">vresen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Denckt om dat Weewtgen <rhyme label="a" type="m" corresp="#s3:l1">reyn</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Daermen van <rhyme label="b" type="f" corresp="#s3:l2">lesen</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Doet als sy heeft <rhyme label="c" type="m">gedaen</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Uyt rechter <rhyme label="d" type="f">minnen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Het sal u wel <rhyme label="c" type="m" corresp="#s3:l5">vergaen</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Wilt dit <rhyme label="d" type="f" corresp="#s3:l6">versinnen</rhyme>:</l>
        <l id="s3:l9" met="3" type="-+">En van u tijtlijck <rhyme label="e" type="m">schat</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Den Armen geeft doch <rhyme label="e" type="m" corresp="#s3:l9">wat</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Want dit is t'rechte <rhyme label="e" type="m" corresp="#s3:l9">pat</rhyme></l>
        <l id="s3:l12" met="2" type="-+">Ten Hemel <rhyme label="d" type="f" corresp="#s3:l6">binnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Gods ooghen open <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Staen op den <rhyme label="b" type="f">Armen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dus wilt in druck en <rhyme label="a" type="m" corresp="#s4:l1">pijn</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Haer oock <rhyme label="b" type="f" corresp="#s4:l2">ontfarmen</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">En wilt haer in <rhyme label="c" type="m">lijen</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Toch niet <rhyme label="d" type="f">beswijcken</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Maer toont sonder <rhyme label="c" type="m" corresp="#s4:l5">mijen</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Dat Troue moet <rhyme label="d" type="f" corresp="#s4:l6">blijcken</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Soo sal t'Helsche <rhyme label="e" type="m">gespuys</rhyme></l>
        <l id="s4:l10" met="3" type="-+">V maken geen <rhyme label="e" type="m" corresp="#s4:l9">gedruys</rhyme>:</l>
        <l id="s4:l11" met="3" type="+-">Maer t'sal moeten <rhyme label="e" type="m" corresp="#s4:l9">confuys</rhyme></l>
        <l id="s4:l12" met="2" type="-+">Van u wech <rhyme label="d" type="f" corresp="#s4:l6">wijcken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Prince, weest niet <rhyme label="a" type="m">verblent</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Maer wilt <rhyme label="b" type="f">aenmercken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer Liefd' is <rhyme label="a" type="m" corresp="#s5:l1">t'fondament</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Moet men so <rhyme label="b" type="f" corresp="#s5:l2">wercken</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Nochtans door ydel <rhyme label="c" type="m">waen</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Daer niet op <rhyme label="d" type="f">hopen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Maer op den rechten <rhyme label="c" type="m" corresp="#s5:l5">baen</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Tot Christum <rhyme label="d" type="f" corresp="#s5:l6">lopen</rhyme>:</l>
        <l id="s5:l9" met="3" type="-+">Want zijn genaden <rhyme label="e" type="m">soet</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Tot ons beraden <rhyme label="e" type="m" corresp="#s5:l9">vroet</rhyme>,</l>
        <l id="s5:l11" met="3" type="+-">Sonder versmaden, <rhyme label="e" type="m" corresp="#s5:l9">goet</rhyme>,</l>
        <l id="s5:l12" met="2" type="-+">Altijt staen <rhyme label="d" type="f" corresp="#s5:l6">open</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
