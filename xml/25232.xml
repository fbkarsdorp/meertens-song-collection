  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als nu wort den hemel <rhyme label="a" type="m">bespreijt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">met den morgen die sijn <rhyme label="a" type="m" corresp="#s1:l1">verbreijt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">den dach die compt op aerden <rhyme label="b" type="m">weer</rhyme></l>
        <l id="s1:l4" met="4" type="-+">alle kranckheden wijke <rhyme label="b" type="m" corresp="#s1:l3">veer</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Des nachts gedachte die <rhyme label="a" type="m">geualt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">des harten faut lijdet <rhyme label="a" type="m" corresp="#s2:l1">gewalt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">dat gruwel dat nacht heft <rhyme label="b" type="m">toegebracht</rhyme></l>
        <l id="s2:l4" met="4" type="-+">van alle schult maect los en <rhyme label="b" type="m" corresp="#s2:l3">sacht</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Oock die naeste morgen stond <rhyme label="a" type="m">blijdt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">die wij verwachten nae dees <rhyme label="a" type="m" corresp="#s3:l1">tijt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">die laet in ons sijn licht <rhyme label="b" type="m">geschien</rhyme></l>
        <l id="s3:l4" met="4" type="-+">al dees morgen ons doet <rhyme label="b" type="m" corresp="#s3:l3">verblijen</rhyme>.</l>
      </lg>
    </lg>
  </text>
