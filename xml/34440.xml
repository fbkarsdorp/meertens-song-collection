    <melody>O allerhoogste mogendheid</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Xaverio gheeft lof en <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Prijst en verheft sijn deughden <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Die blincken over-al soo <rhyme label="b" type="m">schoon</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Als sterren in des Hemels <rhyme label="b" type="m" corresp="#s1:l3">throon</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">O suyver en klaer Sonn' <rhyme label="c" type="m">gheseyt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Vande gheheel <rhyme label="c" type="m" corresp="#s1:l5">Societeyt</rhyme>;</l>
        <l id="s1:l7" met="4" type="-+">Gh'lijck sy verlicht heel <rhyme label="d" type="m">d'aerde-rijck</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Soo is u leven diês <rhyme label="d" type="m" corresp="#s1:l7">ghelijck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wie soud'men vinden soo <rhyme label="a" type="m">bequaem</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die oeffent alle deughden <rhyme label="a" type="m" corresp="#s2:l1">t'saem</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Meer dan Xaverius <rhyme label="b" type="m">alleen</rhyme>?</l>
        <l id="s2:l4" met="4" type="-+">Luttel sijnder volmaeckt in <rhyme label="b" type="m" corresp="#s2:l3">een</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Xaverius met recht ghy <rhyme label="c" type="m">sijt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Ghemaeckt den Phoenix deser <rhyme label="c" type="m" corresp="#s2:l5">tijt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Die door de groote liefde <rhyme label="d" type="m">soet</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Jn vlammen hier wordt <rhyme label="d" type="m" corresp="#s2:l7">op-ghevoet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godts soetigheydt in u soo <rhyme label="a" type="m">spelt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat ghy gheheel van liefde <rhyme label="a" type="m" corresp="#s3:l1">quelt</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Soo dat ghy door den brandt soo <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Moest roepen, t'is ghenoech ô <rhyme label="b" type="m" corresp="#s3:l3">Heer</rhyme>;</l>
        <l id="s3:l5" met="4" type="-+">Het is ghenoech voor desen <rhyme label="c" type="m">keer</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Want ick beswijck, k'en kan niet <rhyme label="c" type="m" corresp="#s3:l5">meer</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">K'ghevoel mijn hert sal smelten <rhyme label="d" type="m">hier</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Ghelijck het was smelt voor het <rhyme label="d" type="m" corresp="#s3:l7">vier</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Jn u was noeyt eenigh <rhyme label="a" type="m">gheschil</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Midts ghy af-ginckt uw'en eyghen <rhyme label="a" type="m" corresp="#s4:l1">wil</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Waer door ghy u gheheel aen <rhyme label="b" type="m">Godt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Verbonden hebt, naer sijn <rhyme label="b" type="m" corresp="#s4:l3">ghebodt</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Een Enghel oock hebt ghy <rhyme label="c" type="m">gheweest</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Jn suyverheydt ghelijckmen <rhyme label="c" type="m" corresp="#s4:l5">leest</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Dus ghy ontfanghen hebt den <rhyme label="d" type="m">loon</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Van Godt, der maeghdelijcke <rhyme label="d" type="m" corresp="#s4:l7">kroon</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Door Landen, Steden, <rhyme label="a" type="m">onbevreest</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En onder d'Hyd'nen <rhyme label="a" type="m" corresp="#s5:l1">aldermeest</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ginckt ghy, uyt liefd' verwonnen <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Uyt-saeyen Jesu Christi <rhyme label="b" type="m" corresp="#s5:l3">leer</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Waer in ghy soo wel hebt <rhyme label="c" type="m">ghevrocht</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Dat ghy veel duysent hebt <rhyme label="c" type="m" corresp="#s5:l5">ghebrocht</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Tot t'Rooms gheloof; die all' met <rhyme label="d" type="m">vleyt</rhyme></l>
        <l id="s5:l8" met="4" type="-+">D'As-goden hebben <rhyme label="d" type="m" corresp="#s5:l7">af-gheseyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Xaverius ô Christen <rhyme label="a" type="m">helt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die uwe siel te pande <rhyme label="a" type="m" corresp="#s6:l1">stelt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Voor Christi schaepen groodt en <rhyme label="b" type="m">klijn</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Om vanden wolf behoet te <rhyme label="b" type="m" corresp="#s6:l3">sijn</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Ghy sijt den herder goedt <rhyme label="c" type="m">oprecht</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Die voor u schaepkens kloeck'lijck <rhyme label="c" type="m" corresp="#s6:l5">vecht</rhyme>:</l>
        <l id="s6:l7" met="4" type="-+">Den vyandt hebt ghy soo <rhyme label="d" type="m">verblent</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">En van u schaep-stal <rhyme label="d" type="m" corresp="#s6:l7">af-ghewent</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Apostel van soo menigh <rhyme label="a" type="m">Landt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Waer-in ghy vierigh hebt <rhyme label="a" type="m" corresp="#s7:l1">gheplandt</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Den Standaert Christi <rhyme label="b" type="m">ongheschent</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die g'in hunn' herten hebt <rhyme label="b" type="m" corresp="#s7:l3">gheprent</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">Godts glori hebt ghy soo <rhyme label="c" type="m">verbreyt</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Dat heel de helle berst van <rhyme label="c" type="m" corresp="#s7:l5">spijt</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">Waerom ghy nu voor uwen <rhyme label="d" type="m">loon</rhyme></l>
        <l id="s7:l8" met="4" type="-+">Besit met vreught den <rhyme label="d" type="m" corresp="#s7:l7">Lauwer-kroon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
