    <melody>Waar is de dochter van Sion</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Iesus na <rhyme label="a" type="m">Jerusalem</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Was reysend', gingh hy <rhyme label="b" type="f">voore</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Sijn Jongeren die volghden <rhyme label="a" type="m" corresp="#s1:l1">hem</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Sy gaven d' moet <rhyme label="b" type="f" corresp="#s1:l2">verloore</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy waren vreesend' en <rhyme label="a" type="m">verbaest</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hy heefts' alleen <rhyme label="b" type="f">genoomen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En haer voorseyt, wat met 'er <rhyme label="a" type="m" corresp="#s2:l1">haest</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Hem soude <rhyme label="b" type="f" corresp="#s2:l2">over-koomen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">t'Jerusalem men heenen <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Alwaer men sal <rhyme label="b" type="f">beleeven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Al 't geen by de Propheeten <rhyme label="a" type="m" corresp="#s3:l1">staet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van 's menschen Soon <rhyme label="b" type="f" corresp="#s3:l2">geschreeven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Aen Princen van de <rhyme label="a" type="m">Priesteren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Schriben en <rhyme label="b" type="f">Ouderlingen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Men 's menschen Soon sal <rhyme label="a" type="m" corresp="#s4:l1">leeveren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En tot de doodt <rhyme label="b" type="f" corresp="#s4:l2">verdingen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Men sal hem aen de <rhyme label="a" type="m">Heydenen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Nogh geeven, om te <rhyme label="b" type="f">spotten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die sullen hem dan <rhyme label="a" type="m" corresp="#s5:l1">geesselen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Bespouwen met haer <rhyme label="b" type="f" corresp="#s5:l2">snotten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dan sullen s'hem, tot hardt <rhyme label="a" type="m">gewagh</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Des Kruyces doodt <rhyme label="b" type="f">verwijsen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En hy weerom ten derden <rhyme label="a" type="m" corresp="#s6:l1">dagh</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Sal van der doodt <rhyme label="b" type="f" corresp="#s6:l2">verrijsen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De Jongeren van dit <rhyme label="a" type="m">vermaen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Heel niet met al <rhyme label="b" type="f">verstonden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Van deese woorden sy <rhyme label="a" type="m" corresp="#s7:l1">verstaen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Den sin geensins en <rhyme label="b" type="f" corresp="#s7:l2">konden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O Iesu, wie sou dat <rhyme label="a" type="m">verstaen</rhyme>?</l>
        <l id="s8:l2" met="3" type="-+">Niemant van die u <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat gy soudt na de doodt toe <rhyme label="a" type="m" corresp="#s8:l1">gaen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En is niet te <rhyme label="b" type="f" corresp="#s8:l2">versinnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
