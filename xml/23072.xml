  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Mocht ic een weynich <rhyme label="a" type="f">spacieren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hier boven inden <rhyme label="b" type="m">throen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Al daer so ist <rhyme label="c" type="f">verciert</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met engelen also <rhyme label="b" type="m" corresp="#s1:l2">scoen</rhyme>!</l>
        <l id="s1:l5" met="4" type="-+">Die engelen singhen daer also <rhyme label="d" type="m">scoen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Sij singhen met soeter <rhyme label="e" type="f">stemmen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hier boven inden <rhyme label="d" type="m" corresp="#s1:l5">throen</rhyme>.</l>
        <l id="s1:l8" met="3" type="-+">Sij singhen met soeter <rhyme label="e" type="f" corresp="#s1:l6">stemmen</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Hier boven inden <rhyme label="d" type="m" corresp="#s1:l5">throen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Willen wi ons <rhyme label="a" type="f">verbliden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Na deser <rhyme label="b" type="m">cortertijt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">So moeten wi leren <rhyme label="c" type="f">sterven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Al onse <rhyme label="b" type="m" corresp="#s2:l2">sinlicheit</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Daer werlt ghenoechtdaertoe <rhyme label="d" type="m">behoren</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">So moghen wi ons <rhyme label="e" type="f">verbliden</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Al inder <rhyme label="d" type="m" corresp="#s2:l5">engelenchoren</rhyme></l>
        <l id="s2:l8" met="3" type="-+">So moghen wi ons <rhyme label="e" type="f" corresp="#s2:l6">verbliden</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Al inder <rhyme label="d" type="m" corresp="#s2:l5">engelenchoren</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Als wi ons vander werlt <rhyme label="a" type="f">keren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Natuer heeft groten <rhyme label="b" type="m">strijt</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Die viant leit ons <rhyme label="c" type="f">laghen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hi heeft des groten <rhyme label="b" type="m" corresp="#s3:l2">nijt</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Des viants listicheit is soe <rhyme label="d" type="m">groot</rhyme>!</l>
        <l id="s3:l6" met="3" type="-+">Laet ons in God <rhyme label="e" type="f">betrouwen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sijn ghenaden sijn also <rhyme label="d" type="m" corresp="#s3:l5">groot</rhyme>.</l>
        <l id="s3:l8" met="3" type="-+">Laet ons in God <rhyme label="e" type="f" corresp="#s3:l6">betrouwen</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Sijn ghenaden sijn also <rhyme label="d" type="m" corresp="#s3:l5">groot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Soe wie in God can <rhyme label="a" type="f">setten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sijn troestin deser <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">God selt hem noch wel <rhyme label="c" type="f">loenen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hiernae in <rhyme label="b" type="m" corresp="#s4:l2">hemelrijc</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Die heilighen sijn daer also <rhyme label="d" type="m">scoen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Maer boven alledie <rhyme label="e" type="f">anderen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Soe spannen die maechden <rhyme label="d" type="m" corresp="#s4:l5">croen</rhyme>.</l>
        <l id="s4:l8" met="3" type="-+">Maer boven alledie <rhyme label="e" type="f" corresp="#s4:l6">anderen</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Soe spannen die maechden <rhyme label="d" type="m" corresp="#s4:l5">croen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die maechden sellen daer <rhyme label="a" type="f">volghen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat Lam al <rhyme label="b" type="m">onbevlect</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die hem hier hebben <rhyme label="c" type="f">ghehouden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Reyn suver <rhyme label="b" type="m" corresp="#s5:l2">onbesmet</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Daer maechdenloen en is niet <rhyme label="d" type="m">cleyn</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Sie sellen hem daer <rhyme label="e" type="f">verblijden</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Al ewelic sonder <rhyme label="d" type="m" corresp="#s5:l5">eynd</rhyme>.</l>
        <l id="s5:l8" met="3" type="-+">Sie sellen hem daer <rhyme label="e" type="f" corresp="#s5:l6">verblijden</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Al ewelic sonder <rhyme label="d" type="m" corresp="#s5:l5">eynd</rhyme>.</l>
      </lg>
    </lg>
