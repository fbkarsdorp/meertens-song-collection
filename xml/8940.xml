    </tags>
    <melody>A solis ortus cardine</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">CHRistum wy sullen Loven <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Der Reynen Maecht Marijen <rhyme label="a" type="m" corresp="#s1:l1">Soon</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">So wijt als schijnt de Sonne <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Des Werelts eyndt reyckt sy <rhyme label="b" type="m" corresp="#s1:l3">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die salig' Schepper aller <rhyme label="a" type="m">Dingh</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Tooch aen eens Knechtes Lijff <rhyme label="a" type="m" corresp="#s2:l1">gering</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat hy dat vlees door t'Vlees <rhyme label="b" type="m">verworff</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">End sein Schepsel niet heel <rhyme label="b" type="m" corresp="#s2:l3">verdorff</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die Godlijck gnaed van Hemel <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Haer in die kuyssche Moeder <rhyme label="a" type="m" corresp="#s3:l1">goot</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Een Meigd'lijn droech een heymlijc <rhyme label="b" type="m">pant</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat der Natuer was <rhyme label="b" type="m" corresp="#s3:l3">onbekandt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dat Zedig' Huys des Herten <rhyme label="a" type="m">fein</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Was haest een Tempel GOdes <rhyme label="a" type="m" corresp="#s4:l1">Reyn</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die geen Man roerde noch <rhyme label="b" type="m">bekand'</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Van Godes Woort men swanger <rhyme label="b" type="m" corresp="#s4:l3">vandt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die Eed'le Moeder heeft <rhyme label="a" type="m">geboor'n</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dien Gabriel vercondicht te <rhyme label="a" type="m" corresp="#s5:l1">voor'n</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Dien Sint Jan wees met springen <rhyme label="b" type="m">stijff</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Doen hy noch lach ins Moeders <rhyme label="b" type="m" corresp="#s5:l3">Lijff</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy lach in Hoy met Armoed' <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Die Kribbe hart hem niet <rhyme label="a" type="m" corresp="#s6:l1">verdroot</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hem quam een cleyne Melck te <rhyme label="b" type="m">baet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die noyt gheen Vogel Hong'ren <rhyme label="b" type="m" corresp="#s6:l3">laet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Des Hemels Choor syn bly daer <rhyme label="a" type="m">off</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En d'Engel singhen Gode <rhyme label="a" type="m" corresp="#s7:l1">Loff</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Den Armen Herders wert <rhyme label="b" type="m">vertelt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Den Herder end Schepper aller <rhyme label="b" type="m" corresp="#s7:l3">werlt</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Lof, Eer en Danck sy dy <rhyme label="a" type="m">alleyn</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Christ gheboor'n van de Maget <rhyme label="a" type="m" corresp="#s8:l1">reyn</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Met Vader en den Heylighen <rhyme label="b" type="m">Gheest</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Van nu aen tot in <rhyme label="b" type="m" corresp="#s8:l3">Eewicheet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
