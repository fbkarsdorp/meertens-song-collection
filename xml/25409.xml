      <category translation="love and sex">liefde en seks</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Miin troest yst in tswijfel <rhyme label="a" type="f">ghevallen</rhyme>.</l>
        <l id="s1:l2" met="4" type="-+">Wal oph, waer willent varen <rhyme label="a" type="f" corresp="#s1:l1">wallen</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Ich haent gheloeft eyn <rhyme label="b" type="m">kerchuaert</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Zint miin lief mich hielt in <rhyme label="c" type="f">zorghen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">spade zo wart ich ghen dem <rhyme label="c" type="f" corresp="#s1:l4">morghen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">of mir yr rotyr mont af <rhyme label="b" type="m" corresp="#s1:l3">gaet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">unde in vreuden hald ich <rhyme label="d" type="m">mich</rhyme>.</l>
        <l id="s1:l8" met="2" type="-+">Zo hayt yr <rhyme label="e" type="f">minne</rhyme></l>
        <l id="s1:l9" met="2" type="+-">ganz mijn <rhyme label="e" type="f" corresp="#s1:l8">zinne</rhyme> -</l>
        <l id="s1:l10" met="4" type="+-">adeu, god gheleyde <rhyme label="d" type="m" corresp="#s1:l7">dich</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sceyden heyt mijn hertz <rhyme label="a" type="f">vercoren</rhyme>.</l>
        <l id="s2:l2" met="4" type="-+">Langher dienst weer gaer <rhyme label="a" type="f" corresp="#s2:l1">verloren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">den had oph <rhyme label="b" type="m">zuverzicht</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Wold ich volghen yren <rhyme label="c" type="f">scertzen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">das mucht mir wel brenghen <rhyme label="c" type="f" corresp="#s2:l4">smertzen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">tso dem erntst wers nichtz <rhyme label="b" type="m" corresp="#s2:l3">nicht</rhyme>.</l>
        <l id="s2:l7" met="4" type="-+">Zi moes wel anders schyhyn <rhyme label="d" type="m">zich</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">oder ich <rhyme label="e" type="f">wayr</rhyme></l>
        <l id="s2:l9" met="2" type="+-"><rhyme label="e" type="f" corresp="#s2:l8">openbaer</rhyme>.</l>
        <l id="s2:l10" met="4" type="+-">Adeeu, god gheleide <rhyme label="d" type="m" corresp="#s2:l7">dich</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dringhen das brencht meneghen <rhyme label="a" type="f">zwaren</rhyme>.</l>
        <l id="s3:l2" met="4" type="-+">Mocht ertz verkeren <rhyme label="a" type="f" corresp="#s3:l1">mere</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">etz zamyt ziin wille <rhyme label="b" type="m">nicht</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Zo moys ich yr vyl manghes <rhyme label="c" type="f">leiden</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Wil ar mich yr spelen <rhyme label="c" type="f" corresp="#s3:l4">meyden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">das eyn anderen ducht <rhyme label="b" type="m" corresp="#s3:l3">ewich</rhyme>.</l>
        <l id="s3:l7" met="4" type="-+">Reyn ghezel, nu <rhyme label="d" type="m">spriich</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">la voghelen <rhyme label="e" type="f">zinghen</rhyme></l>
        <l id="s3:l9" met="2" type="+-">van dyr <rhyme label="e" type="f" corresp="#s3:l8">dringhen</rhyme>.</l>
        <l id="s3:l10" met="4" type="+-">A deeu, god gheleide <rhyme label="d" type="m" corresp="#s3:l7">dich</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
