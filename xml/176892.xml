  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Zo ik zonder vrouw moest <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dan viel my de tyd zeer <rhyme label="b" type="m">lang</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Niets kon my vernoeging <rhyme label="a" type="f" corresp="#s1:l1">geven</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ja het leven werd my <rhyme label="b" type="m" corresp="#s1:l2">bang</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Het zyn waarlyk schone <rhyme label="c" type="f">zaken</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Als myn een vrouwtje klaar <rhyme label="d" type="m">bemind</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En te vrede zig <rhyme label="c" type="f" corresp="#s1:l5">vermaaken</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Schoon men dikwyls anders <rhyme label="d" type="m" corresp="#s1:l6">vind</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die wil bruine, die wil <rhyme label="a" type="f">blonde</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die wil magre, die wil <rhyme label="b" type="m">vet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die wil lange, die wil <rhyme label="a" type="f" corresp="#s2:l1">ronde</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die wil blanke, die <rhyme label="b" type="m" corresp="#s2:l2">bruinet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Dus een ieder zyn <rhyme label="c" type="f">vermaaken</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Ieder kiest 't zy groot of <rhyme label="d" type="m">klein</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Doch ik wensch voor alle <rhyme label="c" type="f" corresp="#s2:l5">zaken</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Dat zy alle waare <rhyme label="d" type="m" corresp="#s2:l6">myn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wat deed ik met al die <rhyme label="a" type="f">vrouwen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dit is waarlyk sotte <rhyme label="b" type="m">praat</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sy zyn duur te <rhyme label="a" type="f" corresp="#s3:l1">onderhouden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En wie is daar toe in <rhyme label="b" type="m" corresp="#s3:l2">staat</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dat moest wel een kaerel <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Die ze al te vreede <rhyme label="d" type="m">houd</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Want veel vrouwen zyn te <rhyme label="c" type="f" corresp="#s3:l5">vreezen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Neen die wensch is waarlyk <rhyme label="d" type="m" corresp="#s3:l6">fout</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Deeze krabbe, andere <rhyme label="a" type="f">byten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Die is koppig, die vol <rhyme label="b" type="m">drift</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Deeze schelde, die <rhyme label="a" type="f" corresp="#s4:l1">verwyten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Die is steekend, die weer <rhyme label="b" type="m" corresp="#s4:l2">schift</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Schoon men heeft ze doch van <rhyme label="c" type="f">noden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">De goede spreekt men niet te <rhyme label="d" type="m">na</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Dit is ons vooral verbo <rhyme label="c" type="f" corresp="#s4:l5">en</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Of men raakt in <rhyme label="d" type="m" corresp="#s4:l6">ongena</rhyme>.</l>
      </lg>
    </lg>
  </text>
