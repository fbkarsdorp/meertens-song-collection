  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">‘K Wil lijden sonder <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijn lijden en acht ick <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Tot dat sal komen den <rhyme label="b" type="m">dagh</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat ick my verblijden <rhyme label="b" type="m" corresp="#s1:l3">magh</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Want hier en is gheen volkomen <rhyme label="c" type="m">vreught</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Want hier en is gheen volkomen <rhyme label="c" type="m" corresp="#s1:l5">vreucht</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Die ’t hert <rhyme label="c" type="m" corresp="#s1:l5">verheught</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Dan te keeren tot de <rhyme label="c" type="m" corresp="#s1:l5">deught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dus vromelijcken <rhyme label="a" type="m">strijt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Jonck, oudt, wie dat ghy <rhyme label="a" type="m" corresp="#s2:l1">zijt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De deught die staet ten <rhyme label="b" type="m">toon</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Loopt snel, en vat die <rhyme label="b" type="m" corresp="#s2:l3">croon</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Soo hebben Godts Heyligen <rhyme label="c" type="m">voorgegaen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Soo hebben Godts Heyligen <rhyme label="c" type="m" corresp="#s2:l5">voorgegaen</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">En <rhyme label="c" type="m" corresp="#s2:l5">wederstaen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Om d’eeuwighe croon <rhyme label="c" type="m" corresp="#s2:l5">t’ontfaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Och! wat een groote <rhyme label="a" type="m">vreucht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sal hebben de jonghe <rhyme label="a" type="m" corresp="#s3:l1">jeucht</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die hier hun vleesch <rhyme label="b" type="m">rebel</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hebben werderstaen seer <rhyme label="b" type="m" corresp="#s3:l3">snel</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Den duyvel, de werelt, het aertsche <rhyme label="c" type="m">goedt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Den duyvel, de werelt, het aertsche <rhyme label="c" type="m" corresp="#s3:l5">goedt</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Al metter <rhyme label="c" type="m" corresp="#s3:l5">spoet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Hebben ghetreden onder den <rhyme label="c" type="m" corresp="#s3:l5">voet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt dan, o maeghdekens <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Den Bruydegom gaen te <rhyme label="a" type="m" corresp="#s4:l1">ghemoet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Met lampen <rhyme label="b" type="m">triomphant</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Vol olie <rhyme label="b" type="m" corresp="#s4:l3">abondant</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Want maegdekens volgen ‘tlammeken <rhyme label="c" type="m">na</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Want maegdekens volgen ‘tlammeken <rhyme label="c" type="m" corresp="#s4:l5">na</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Soo waer het <rhyme label="c" type="m" corresp="#s4:l5">gaet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Om haren maeghdelijcken <rhyme label="c" type="m" corresp="#s4:l5">staet</rhyme>.</l>
      </lg>
    </lg>
  </text>
