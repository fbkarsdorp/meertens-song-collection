      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Ramp, Ã´ <rhyme label="a" type="m">zielsverdriet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Nu is 't met my <rhyme label="b" type="m">gedaan</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Zy die myn' ziel' <rhyme label="a" type="m" corresp="#s1:l1">gebied</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wil zich van my <rhyme label="b" type="m" corresp="#s1:l2">ontslaan</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Verwoede <rhyme label="c" type="m">Tygerin</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Veracht gy myne <rhyme label="c" type="m" corresp="#s1:l5">min</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dan smoor ik in myn <rhyme label="d" type="m">bloed</rhyme>;</l>
        <l id="s1:l8" met="3" type="-+">Wel 't leeven my <rhyme label="e" type="m">verveeld</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Nu ik u derven <rhyme label="d" type="m" corresp="#s1:l7">moet</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">En gy u my <rhyme label="e" type="m" corresp="#s1:l8">ontsteelt</rhyme>.</l>
        <l id="s1:l11" met="3" type="+-">Nu zweer ik, nooit een <rhyme label="f" type="m">vrouw</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Die 'k min, te zyn <rhyme label="f" type="m" corresp="#s1:l11">getrouw</rhyme>!</l>
        <l id="s1:l13" met="3" type="-+">Zy spotte met myn <rhyme label="g" type="m">wee</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">En neemt nu zy m' <rhyme label="h" type="m">ontvlied</rhyme>,</l>
        <l id="s1:l15" met="3" type="-+">Myn' vreugde en wellust <rhyme label="g" type="m" corresp="#s1:l13">mee</rhyme>,</l>
        <l id="s1:l16" met="3" type="-+">Dies lust my 't leeven <rhyme label="h" type="m" corresp="#s1:l14">niet</rhyme>.</l>
