  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HUydendaeghsche <rhyme label="a" type="f">Danseryen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Moet ghy, Christelijcke <rhyme label="b" type="m">Jeucht</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Niet beminnen, maer <rhyme label="a" type="f" corresp="#s1:l1">vermyen</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Want sy leeren Eer noch <rhyme label="b" type="m" corresp="#s1:l2">Deucht</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Dansery is <rhyme label="c" type="m">voort-gebracht</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Van het blindt vervloeckt <rhyme label="c" type="m" corresp="#s1:l5">gheslacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Bacchus-Feesten, <rhyme label="a" type="f">Gulsigheden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Zijn de Teelers van dit <rhyme label="b" type="m">Kindt</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Dertelheydt, onkuyse <rhyme label="a" type="f" corresp="#s2:l1">zeden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Men steeds in het Danssen <rhyme label="b" type="m" corresp="#s2:l2">vindt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Dat tot vuyle lusten <rhyme label="c" type="m">streckt</rhyme></l>
        <l id="s2:l6" met="4" type="+-">En een reynen Ziel <rhyme label="c" type="m" corresp="#s2:l5">bevleckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Geen onvruchtbaer is ten <rhyme label="a" type="f">goede</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En occasi gheeft tot <rhyme label="b" type="m">quaedt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dit al moeten wy <rhyme label="a" type="f" corresp="#s3:l1">verhoeden</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Want het Godt niet toe en <rhyme label="b" type="m" corresp="#s3:l2">laet</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Soo is nu de <rhyme label="c" type="m">Danssery</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Dus die niet gheoorloft <rhyme label="c" type="m" corresp="#s3:l5">zy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hier op mochte yemandt <rhyme label="a" type="f">seggen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dit en kan ick niet <rhyme label="b" type="m">verstaen</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Maer ick sal het <rhyme label="a" type="f" corresp="#s4:l1">weder-legghen</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Godts Volck heeft dit oock <rhyme label="b" type="m" corresp="#s4:l2">ghedaen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Mirjam en veel Vrouwen <rhyme label="c" type="m">meer</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Dansten vrolijck voor den <rhyme label="c" type="m" corresp="#s4:l5">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wanneer David had <rhyme label="a" type="f">geslaghen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Goliath den <rhyme label="b" type="m">Philisteen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Sach men Vrouwtjes in dien <rhyme label="a" type="f" corresp="#s5:l1">daghen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Met een groot ghetal by <rhyme label="b" type="m" corresp="#s5:l2">een</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Dansten, met een bly <rhyme label="c" type="m">gheluyt</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Riepen Godes daden <rhyme label="c" type="m" corresp="#s5:l5">uyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Doen eertijdts de Arck des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Werdt uyt Obeds Huys <rhyme label="b" type="m">ghebracht</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Danste David Godt ter <rhyme label="a" type="f" corresp="#s6:l1">eeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Daer sijn Vrouw' hem om <rhyme label="b" type="m" corresp="#s6:l2">veracht'</rhyme> ,</l>
        <l id="s6:l5" met="4" type="+-">Daerom haer de Heere <rhyme label="c" type="m">plaeghd'</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Toond'  dat Danssen hem <rhyme label="c" type="m" corresp="#s6:l5">behaeghd'</rhyme> .</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">HIer op segh ick nu met <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Ghy misbruyckt des Heeren <rhyme label="b" type="m">Woort</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">'t Waren gheen <rhyme label="a" type="f" corresp="#s7:l1">lichtvaerdigheden</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">'t Quam uyt den Geloove <rhyme label="b" type="m" corresp="#s7:l2">voort</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Vrouwtjens maeckten doe een <rhyme label="c" type="m">Ry</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Maer gheen Man en waerder <rhyme label="c" type="m" corresp="#s7:l5">by</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'t Danssen was in Davids <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Als oneerlijck, me'e <rhyme label="b" type="m">veracht</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Om dat hy dit niet gingh <rhyme label="a" type="f" corresp="#s8:l1">mijden</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Heeft sijn Vrouwe hem <rhyme label="b" type="m" corresp="#s8:l2">belacht</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Dat hy danste door Godts <rhyme label="c" type="m">Geest</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Is haer onbekent <rhyme label="c" type="m" corresp="#s8:l5">gheweest</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Dese saeck en kan niet <rhyme label="a" type="f">strecken</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Dertel Volck, tot u <rhyme label="b" type="m">baet</rhyme>.</l>
        <l id="s9:l3" met="4" type="+-">'t Blijckt dat ghy u vuyle <rhyme label="a" type="f" corresp="#s9:l1">vlecken</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Met sijn Deucht bedecken <rhyme label="b" type="m" corresp="#s9:l2">gaet</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Sijn doen was een heyl' ghe <rhyme label="c" type="m">saeck</rhyme>;</l>
        <l id="s9:l6" met="4" type="+-">U doen vleesschelijck <rhyme label="c" type="m" corresp="#s9:l5">vermaeck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Uyt sulck danssen is <rhyme label="a" type="f">ghekomen</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Dickwils jammer en <rhyme label="b" type="m">client</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">Silos Dochters zyn <rhyme label="a" type="f" corresp="#s10:l1">ghenomen</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Van haer danssen, en <rhyme label="b" type="m" corresp="#s10:l2">gheschent</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">En des heyl'ghen Doopers <rhyme label="c" type="m">hooft</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Is door 't danssen oock <rhyme label="c" type="m" corresp="#s10:l5">gherooft</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">IsraÃ«l met bly <rhyme label="a" type="f">behaghen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Dansten rondtsom 't Kalf <rhyme label="b" type="m">heen</rhyme>.</l>
        <l id="s11:l3" met="4" type="+-">Och ! wat bitt're droeve <rhyme label="a" type="f" corresp="#s11:l1">slaghen</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Hebben sy daerom <rhyme label="b" type="m" corresp="#s11:l2">ghele'en</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Wel drie duysent kleyn en <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Van dien Danssers zyn <rhyme label="c" type="m" corresp="#s11:l5">ghedoodt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Soete Jeucht, u danssen, <rhyme label="a" type="f">springen</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Al u dertel mal <rhyme label="b" type="m">ghelaet</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">En u geyl en ydel <rhyme label="a" type="f" corresp="#s12:l1">singhen</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Voor Godt als een gruwel <rhyme label="b" type="m" corresp="#s12:l2">staet</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Laet dit quaedt, bidt om <rhyme label="c" type="m">ghenaedt</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Eer hy u in gramschap <rhyme label="c" type="m" corresp="#s12:l5">slaet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Ghy moet met u radde <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Dringhen door de <rhyme label="b" type="m">Enge-Poort</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">En den smallen Wegh <rhyme label="a" type="f" corresp="#s13:l1">betreden</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Daer een Dansser niet <rhyme label="b" type="m" corresp="#s13:l2">behoort</rhyme>.</l>
        <l id="s13:l5" met="4" type="+-">Christi Jock en heyl' ge <rhyme label="c" type="m">last</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Eenen Dansser niet en <rhyme label="c" type="m" corresp="#s13:l5">past</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
