    <melody>Ik wil van deze avond</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">ZVllen niet <rhyme label="a" type="f">verrijzen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De dooden zoo ghy waent// <rhyme label="b" type="m">Wie</rhyme></l>
        <l id="s1:l3" met="4" type="+-">zal dan het Doopzel <rhyme label="a" type="f" corresp="#s1:l1">prijzen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">’t Welk op veelderhande <rhyme label="a" type="f" corresp="#s1:l1">wijzen</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Voor de dooden bid en <rhyme label="b" type="m" corresp="#s1:l2">traent</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Dit was d’eige <rhyme label="a" type="f">rede</rhyme></l>
        <l id="s2:l2" met="3" type="-+">(Zoo’k noch by Paulus <rhyme label="b" type="m">lees</rhyme>)</l>
        <l id="s2:l3" met="4" type="+-">In zijn waerden brief, daer <rhyme label="a" type="f" corresp="#s2:l1">mede</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Hy den volken blijken <rhyme label="a" type="f" corresp="#s2:l1">dede</rhyme></l>
        <l id="s2:l5" met="4" type="+-">De verrizenis des <rhyme label="b" type="m" corresp="#s2:l2">vlees</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">En wie zou de <rhyme label="a" type="f">luyden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Zult ghy my zeggen <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Of van oosten, of van <rhyme label="a" type="f" corresp="#s3:l1">zuyden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Jmmerneer den doop <rhyme label="a" type="f" corresp="#s3:l1">beduyden</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Kunnen op het <rhyme label="b" type="m" corresp="#s3:l2">Vagevier</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Wel met goede <rhyme label="a" type="f">graty</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Elk een die maer <rhyme label="b" type="m">gedenkt</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Dat by d’Isralijtse <rhyme label="a" type="f" corresp="#s4:l1">naty</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Doop genomt werd <rhyme label="a" type="f" corresp="#s4:l1">tribulaty</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Die ’t lichaem’lijk leven <rhyme label="b" type="m" corresp="#s4:l2">krenkt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">’t Blijkt uit zoo veel <rhyme label="a" type="f">steden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Daer Christus zoomen <rhyme label="b" type="m">ziet</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Tot noch op den dag van <rhyme label="a" type="f" corresp="#s5:l1">heden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Alles wat by hem <rhyme label="a" type="f" corresp="#s5:l1">geleden</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Werden oit, een doopsel <rhyme label="b" type="m" corresp="#s5:l2">hiet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">’t Geen voor <rhyme label="a" type="f">d’overleden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dan yemand eenig <rhyme label="b" type="m">leyd</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">’t Sy met vasten, of <rhyme label="a" type="f" corresp="#s6:l1">gebeden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Of met hayre kle’en aen <rhyme label="a" type="f" corresp="#s6:l1">dede</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Werd by Paulus doop <rhyme label="b" type="m" corresp="#s6:l2">gezeydt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Zoo dat hier uit <rhyme label="a" type="f">blijken</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als uit het klaerste <rhyme label="b" type="m">merk</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Kan ’t gebruyk der <rhyme label="a" type="f" corresp="#s7:l1">Catholijken</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En dat all’ de Secten  <rhyme label="a" type="f" corresp="#s7:l1">wijken</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Hier in, van de waere <rhyme label="b" type="m" corresp="#s7:l2">Kerk</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Laet dan deze <rhyme label="a" type="f">snode</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Verkeerders, wie ghy <rhyme label="b" type="m">sijt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Als een deel verlope <rhyme label="a" type="f" corresp="#s8:l1">Boden</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Bid en vast weer voor de <rhyme label="a" type="f" corresp="#s8:l1">doden</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Zoo men dee in Paulus <rhyme label="b" type="m" corresp="#s8:l2">tijd</rhyme>.</l>
      </lg>
    </lg>
  </text>
