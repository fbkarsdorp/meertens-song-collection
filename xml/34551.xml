  <author>Jan Mommaert</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Ghy die by <rhyme label="a" type="f">wylen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met liefd' rechts spelen <rhyme label="b" type="m">wilt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wacht u doch voor syn <rhyme label="a" type="f" corresp="#s1:l1">pylen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Want daer aen is hy <rhyme label="b" type="m" corresp="#s1:l2">mildt</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">En wylen ghy wilt <rhyme label="c" type="f">veynsen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Verkeert hy u <rhyme label="c" type="f" corresp="#s1:l5">ghepeynsen</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Het boefken <rhyme label="d" type="m">lacht</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Als hy <rhyme label="d" type="m" corresp="#s1:l7">verkracht</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Die hem het minste <rhyme label="d" type="m" corresp="#s1:l7">acht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ghy siet een <rhyme label="a" type="f">diertjen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Onnoosel, ende <rhyme label="b" type="m">slecht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En denckt, aen sulcken <rhyme label="a" type="f" corresp="#s2:l1">viertjen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En branden hem noyt <rhyme label="b" type="m" corresp="#s2:l2">knecht</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">En wylen ghy wilt <rhyme label="c" type="f">veynsen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Treedt liefd' uyt u <rhyme label="c" type="f" corresp="#s2:l5">ghepeynsen</rhyme>.</l>
        <l id="s2:l7" met="2" type="-+">Het boefken <rhyme label="d" type="m">lacht</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Als hy <rhyme label="d" type="m" corresp="#s2:l7">verkracht</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Die hem het minste <rhyme label="d" type="m" corresp="#s2:l7">acht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Al slaet u <rhyme label="a" type="f">tonghe</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Heel anders als u <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">'t Zyn al vergheefsche <rhyme label="a" type="f" corresp="#s3:l1">spronghen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghy voelt den binnen <rhyme label="b" type="m" corresp="#s3:l2">smert</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En wylen ghy wilt <rhyme label="c" type="f">veynsen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Treedt liefd' uyt u <rhyme label="c" type="f" corresp="#s3:l5">ghepeynsen</rhyme>.</l>
        <l id="s3:l7" met="2" type="-+">Het boefken <rhyme label="d" type="m">lacht</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Als hy <rhyme label="d" type="m" corresp="#s3:l7">verkracht</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Die hem het minste <rhyme label="d" type="m" corresp="#s3:l7">acht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Al wilt ghy <rhyme label="a" type="f">sluyten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat vier in uwen <rhyme label="b" type="m">krop</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Het raeckter even <rhyme label="a" type="f" corresp="#s4:l1">buyten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Met eenen stoot oft <rhyme label="b" type="m" corresp="#s4:l2">klop</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">En wylen ghy wilt <rhyme label="c" type="f">veynsen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Treedt liefd' uyt u <rhyme label="c" type="f" corresp="#s4:l5">ghepeynsen</rhyme>.</l>
        <l id="s4:l7" met="2" type="-+">Het boefken <rhyme label="d" type="m">lacht</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Als hy <rhyme label="d" type="m" corresp="#s4:l7">verkracht</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Die hem het minste <rhyme label="d" type="m" corresp="#s4:l7">acht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Soo wou <rhyme label="a" type="f">Menalcas</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Bewaren lest syn <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Maer Cloris die te schalck <rhyme label="a" type="f" corresp="#s5:l1">was</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Daer van Meestersse <rhyme label="b" type="m" corresp="#s5:l2">werdt</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">En wylen ghy wilt <rhyme label="c" type="f">veynsen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Treedt liefd' uyt u <rhyme label="c" type="f" corresp="#s5:l5">ghepeynsen</rhyme>.</l>
        <l id="s5:l7" met="2" type="-+">Het boefken <rhyme label="d" type="m">lacht</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Als hy <rhyme label="d" type="m" corresp="#s5:l7">verkracht</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Die hem het minste <rhyme label="d" type="m" corresp="#s5:l7">acht</rhyme>.</l>
      </lg>
    </lg>
  </text>
