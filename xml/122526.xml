  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Voor u alleen plukte ik deez' <rhyme label="a" type="f">bloemen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ontvangt dit Roosje van <rhyme label="b" type="m">Babet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Het roosje boven al te <rhyme label="a" type="f" corresp="#s1:l1">roemen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Hetzij mijn tulpje of <rhyme label="b" type="m" corresp="#s1:l2">violet</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och prent de bloempjes toch in uw <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Welker glans toch eens <rhyme label="b" type="m">verschiet</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Ach, blijft mij toch standvastig <rhyme label="a" type="f" corresp="#s2:l1">minnen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ik leef door liefde en anders <rhyme label="b" type="m" corresp="#s2:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Voor andre moet ge uw wezen <rhyme label="a" type="f">trekken</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Beschouw mijn hart en mijn <rhyme label="b" type="m">gelaat</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Neen, nooit zal ik mijn liefde <rhyme label="a" type="f" corresp="#s3:l1">ontdekken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Indien gij mij maar niet <rhyme label="b" type="m" corresp="#s3:l2">versmaad</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wij danzen vrolijk met <rhyme label="a" type="f">genoegen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Babet en Blaize met <rhyme label="b" type="m">elka√¢r</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Lizette zal zich daarbij <rhyme label="a" type="f" corresp="#s4:l1">voegen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Straks verliet zij mij om <rhyme label="b" type="m" corresp="#s4:l2">haar</rhyme>.</l>
      </lg>
    </lg>
