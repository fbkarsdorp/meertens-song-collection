<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186886</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wat vreugde, ô waerde <rhyme label="a" type="f">Burgerheeren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Handhavers van de Maes en 't <rhyme label="b" type="m">Y</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Pilaeren onzer <rhyme label="b" type="m" corresp="#s1:l2">Koopvaerdy</rhyme>!</l>
        <l id="s1:l4" met="4" type="-+">Dien wy, als andre Catoos, <rhyme label="a" type="f" corresp="#s1:l1">eeren</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat vreugd! wat eer voor al den <rhyme label="a" type="f">hoon</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die gy van Snoodaerts moest <rhyme label="b" type="m">verduuren</rhyme>!</l>
        <l id="s2:l3" met="4" type="-+">Gedrochten, die zich vaek <rhyme label="b" type="m" corresp="#s2:l2">verhuuren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">De deugd ten smaed, om honden <rhyme label="a" type="f" corresp="#s2:l1">loon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Elk Burger, ieder <rhyme label="a" type="f">Ingezeten</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die s'Lands geluk ter harte <rhyme label="b" type="m">gaat</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Erkent uw voorzorg, hulp en <rhyme label="b" type="m" corresp="#s3:l2">raet</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Nooit zal zyn hart uw trouw <rhyme label="a" type="f" corresp="#s3:l1">vergeeten</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Men juicht u toe, met <rhyme label="a" type="f">handgeklap</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">‘Geluk! thans is uw wensch <rhyme label="b" type="m">volkomen</rhyme>!</l>
        <l id="s4:l3" met="4" type="-+">‘'t Besluit, voor lang by u <rhyme label="b" type="m" corresp="#s4:l2">genomen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">‘Stygt haest, wat eer! ten hoogsten <rhyme label="a" type="f" corresp="#s4:l1">trap</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De blyde Beurszwaait wyrook <rhyme label="a" type="f">geuren</rhyme>:</l>
        <l id="s5:l2" met="4" type="-+">Zy brengt, verheugd en bly te <rhyme label="b" type="m">moê</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Uw thans haer dankbaere offers <rhyme label="b" type="m" corresp="#s5:l2">toe</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Uw Wysheid doet haer 't hooft op <rhyme label="a" type="f" corresp="#s5:l1">beuren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hoe komt uw keur het Y te <rhyme label="a" type="f">staê</rhyme>!</l>
        <l id="s6:l2" met="4" type="-+">Zyn stroom, bekent aan 's Werelds <rhyme label="b" type="m">Assen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Zend haest, door de ongemeeten <rhyme label="b" type="m" corresp="#s6:l2">plassen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Zyn kielen naer <rhyme label="a" type="f" corresp="#s6:l1">America</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">America, 't gevaer <rhyme label="a" type="f">doorstreden</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Een Volk aen Neerlands Volk <rhyme label="b" type="m">gelyk</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Geeft, van zyn vriendschap, 't zichbaerst <rhyme label="b" type="m" corresp="#s7:l2">blyk</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Daer 't met ons in Verbond wil <rhyme label="a" type="f" corresp="#s7:l1">treden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Het acht ons, boven andren, <rhyme label="a" type="f">hoog</rhyme>:</l>
        <l id="s8:l2" met="4" type="-+">Wyl koopzucht, vlyt, door 't geld <rhyme label="b" type="m">gesteven</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">By elk, ons eer en aenzien <rhyme label="b" type="m" corresp="#s8:l2">geeven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Hoe 't ook den Britten grieven <rhyme label="a" type="f" corresp="#s8:l1">moog</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dan, wie kreunt zich den haet dier <rhyme label="a" type="f">snooden</rhyme>!</l>
        <l id="s9:l2" met="4" type="-+">Gy niet myn Vaderstad! ô <rhyme label="b" type="m">neen</rhyme>!</l>
        <l id="s9:l3" met="4" type="-+">Gy tart hun woeden, gy <rhyme label="b" type="m" corresp="#s9:l2">alleen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Hebt hen, het eerst', het hooft <rhyme label="a" type="f" corresp="#s9:l1">gebooden</rhyme>!</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Vaert voort! vaer voort! uw <rhyme label="a" type="f">Gloriezon</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Zie 'k haest in vollen luister <rhyme label="b" type="m">dagen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Al de Aard zal van uw moed <rhyme label="b" type="m" corresp="#s10:l2">gewagen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Tot spyt van 't wreevlig <rhyme label="a" type="f" corresp="#s10:l1">Albion</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En wy, lofwaerde <rhyme label="a" type="f">Burgerheeren</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Handhavers van de Maas en 't <rhyme label="b" type="m">Y</rhyme>!</l>
        <l id="s11:l3" met="4" type="-+">Wy zullen! Ja! dat zullen <rhyme label="b" type="m" corresp="#s11:l2">wy</rhyme>!</l>
        <l id="s11:l4" met="4" type="-+">Met u het Britsch gewelt <rhyme label="a" type="f" corresp="#s11:l1">trotseeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
