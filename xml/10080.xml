  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ACh myn gulde middach <rhyme label="a" type="m">Son</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Die my door u straalen <rhyme label="a" type="m" corresp="#s1:l1">won</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Door d'eerste <rhyme label="b" type="m">lonck</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Myn zieltje <rhyme label="b" type="m" corresp="#s1:l3">dronck</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Uyt beeckje van de min, al waer <rhyme label="c" type="m">myn</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Eerste lieffd <rhyme label="a" type="m" corresp="#s1:l1">begon</rhyme></l>
        <l id="s1:l7" met="2" type="-+">'t Was Hemels <rhyme label="d" type="m">soet</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Dat eer ick 't wist waer ick <rhyme label="e" type="f">verswolgen</rhyme></l>
        <l id="s1:l9" met="2" type="+-">Door de <rhyme label="d" type="m" corresp="#s1:l7">gloet</rhyme>.</l>
        <l id="s1:l10" met="2" type="-+">Die myn in <rhyme label="c" type="m" corresp="#s1:l5">schyn</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Van soetheyt heel <rhyme label="e" type="f" corresp="#s1:l8">verbolgen</rhyme></l>
        <l id="s1:l12" met="6" type="+-">Nu aen u myn tweede zieltjen smeeken <rhyme label="d" type="m" corresp="#s1:l7">doet</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Laet my niet meer in 't <rhyme label="a" type="m">verdriet</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Bid ick die myn ziel <rhyme label="a" type="m" corresp="#s2:l1">gebiedt</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Ach u <rhyme label="b" type="m">gemoet</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Met woorden <rhyme label="b" type="m" corresp="#s2:l3">soet</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Laat buygen, tot de min, daar yder een <rhyme label="c" type="m">zyn</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Vreught in <rhyme label="a" type="m" corresp="#s2:l1">siet</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Aen siet myn <rhyme label="d" type="m">noodt</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Ick sal u steets myn liefde <rhyme label="e" type="f">toone</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Tot der <rhyme label="d" type="m" corresp="#s2:l7">doodt</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">De liefde voet, myn heus <rhyme label="c" type="m" corresp="#s2:l5">gemoet</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">O <rhyme label="e" type="f" corresp="#s2:l8">schoone</rhyme>,</l>
        <l id="s2:l12" met="6" type="+-">Daerom lieff ick bidt, aen siet myn lyde <rhyme label="d" type="m" corresp="#s2:l7">groot</rhyme>.</l>
      </lg>
    </lg>
  </text>
