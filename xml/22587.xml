  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Die werelt heeft my in haer <rhyme label="a" type="m">ghewout</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Met haren stricken <rhyme label="a" type="m" corresp="#s1:l1">menichvout</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Mijn macht hevet sy <rhyme label="b" type="f">ghenomen</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Nochtans soe wil ic houden <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Daer isser veel <rhyme label="b" type="f" corresp="#s1:l3">ontcomen</rhyme>.</l>
        <l id="s1:l6" met="4" type="-+">Nochtans soe wil ic houden <rhyme label="c" type="m" corresp="#s1:l4">moet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Daer isser veel <rhyme label="b" type="f" corresp="#s1:l3">ontcomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die werelt, die toent my <rhyme label="a" type="m">vrolicheit</rhyme>.</l>
        <l id="s2:l2" met="4" type="-+">Natuer, die isser toe <rhyme label="a" type="m" corresp="#s2:l1">bereit</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die werlt woude si <rhyme label="b" type="f">behaghen</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Dat ic natuer ghevolghet <rhyme label="c" type="m">heb</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Des mach ic my wel <rhyme label="b" type="f" corresp="#s2:l3">beclaghen</rhyme>!</l>
        <l id="s2:l6" met="4" type="-+">Dat ic natuer ghevolghet <rhyme label="c" type="m" corresp="#s2:l4">heb</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Des mach ic my wel <rhyme label="b" type="f" corresp="#s2:l3">beclaghen</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die werelt die wil ic <rhyme label="a" type="m">avegaen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Haer vroechde is also scier <rhyme label="a" type="m" corresp="#s3:l1">ghedaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Si vergaet in corten <rhyme label="b" type="f">daghen</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Ic en wil die edel siele <rhyme label="c" type="m">mijn</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Niet langher daer in <rhyme label="b" type="f" corresp="#s3:l3">waghe</rhyme>.</l>
        <l id="s3:l6" met="4" type="-+">Ic en wil die edel siele <rhyme label="c" type="m" corresp="#s3:l4">mijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Niet langher daer in <rhyme label="b" type="f" corresp="#s3:l3">waghe</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ic en acht niet meer dit aertsche <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die minne heeft my ghegeven <rhyme label="a" type="m" corresp="#s4:l1">moet</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Natuer, en ghi moet <rhyme label="b" type="f">sterven</rhyme>!</l>
        <l id="s4:l4" met="4" type="-+">Dat ic dus langhe verloren <rhyme label="c" type="m">heb</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat hoep ic nu te <rhyme label="b" type="f" corresp="#s4:l3">verwerven</rhyme>.</l>
        <l id="s4:l6" met="4" type="-+">Dat ic dus langhe verloren <rhyme label="c" type="m" corresp="#s4:l4">heb</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dat hoep ic nu te <rhyme label="b" type="f" corresp="#s4:l3">verwerven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Des wilt ghi horen een groot <rhyme label="a" type="m">beclach</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Natuer die roept: 'O wi, O <rhyme label="a" type="m" corresp="#s5:l1">wach</rhyme>!'</l>
        <l id="s5:l3" met="3" type="-+">Haer vruechden moet si <rhyme label="b" type="f">laten</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Daer si haer welneer in te verbliden <rhyme label="c" type="m">plach</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Des moete si nu leren <rhyme label="b" type="f" corresp="#s5:l3">laten</rhyme>.</l>
        <l id="s5:l6" met="4" type="-+">Daer si haer welneer in te verbliden <rhyme label="c" type="m" corresp="#s5:l4">plach</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Des moete si nu leren <rhyme label="b" type="f" corresp="#s5:l3">laten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hadieu, hadyeu, nature <rhyme label="a" type="m">mijn</rhyme>!</l>
        <l id="s6:l2" met="4" type="-+">Mijn hart dat moet ontcommert <rhyme label="a" type="m" corresp="#s6:l1">sijn</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Van allen aertschen <rhyme label="b" type="f">saken</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Die Coninc in der <rhyme label="c" type="m">ewicheit</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Die wil ic nu <rhyme label="b" type="f" corresp="#s6:l3">inlaten</rhyme>.</l>
        <l id="s6:l6" met="4" type="-+">Die Coninc in der <rhyme label="c" type="m" corresp="#s6:l4">ewicheit</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Die wil ic nu <rhyme label="b" type="f" corresp="#s6:l3">inlaten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ic voel in my een <rhyme label="a" type="m">vonkelkijn</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Het ontsteect so seer dat harte <rhyme label="a" type="m" corresp="#s7:l1">mijn</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ic wilre my toe <rhyme label="b" type="f">besaten</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Die minne vermacht alsoe <rhyme label="c" type="m">wel</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Een vuer der of te <rhyme label="b" type="f" corresp="#s7:l3">maken</rhyme>.</l>
        <l id="s7:l6" met="4" type="-+">Die minne vermacht alsoe <rhyme label="c" type="m" corresp="#s7:l4">wel</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Een vuer der of te <rhyme label="b" type="f" corresp="#s7:l3">maken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Mijn vianden nemen des nauwe <rhyme label="a" type="m">waer</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Heymelijc ende <rhyme label="a" type="m" corresp="#s8:l1">openbaer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Si legghen my valsche <rhyme label="b" type="f">laghen</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Daerom soe moet ic wacker <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">By nacht ende oec bi <rhyme label="b" type="f" corresp="#s8:l3">daghe</rhyme>.</l>
        <l id="s8:l6" met="4" type="-+">Daerom soe moet ic wacker <rhyme label="c" type="m" corresp="#s8:l4">sijn</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">By nacht ende oec bi <rhyme label="b" type="f" corresp="#s8:l3">daghe</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Waerom en wil ic my niet <rhyme label="a" type="m">verslaen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Mit vruechden wil ic <rhyme label="a" type="m" corresp="#s9:l1">aenegaen</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Ic sel se wel <rhyme label="b" type="f">verweren</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Die min die voert soe groten <rhyme label="c" type="m">brant</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Si en moghen my niet <rhyme label="b" type="f" corresp="#s9:l3">deren</rhyme>.</l>
        <l id="s9:l6" met="4" type="-+">Die min die voert soe groten <rhyme label="c" type="m" corresp="#s9:l4">brant</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Si en moghen my niet <rhyme label="b" type="f" corresp="#s9:l3">deren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Die Coninc in der <rhyme label="a" type="m">ewicheit</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Mijn hart hevet Hi also <rhyme label="a" type="m" corresp="#s10:l1">bereit</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Sijn cracht doet my <rhyme label="b" type="f">ghewinnen</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">Sijn gaven sijn also <rhyme label="c" type="m">menichvout</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Ten can geen hart <rhyme label="b" type="f" corresp="#s10:l3">besinnen</rhyme>.</l>
        <l id="s10:l6" met="4" type="-+">Sijn gaven sijn also <rhyme label="c" type="m" corresp="#s10:l4">menichvout</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Ten can geen hart <rhyme label="b" type="f" corresp="#s10:l3">besinnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
