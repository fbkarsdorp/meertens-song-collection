  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">T’Wijl de sinnen zijn <rhyme label="a" type="f">ontsteken</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Om te <rhyme label="a" type="f" corresp="#s1:l1">wreken</rhyme></l>
        <l id="s1:l3" met="4" type="+-">’tOnbehaechelijcke <rhyme label="b" type="m">quaedt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Laet, o Heer, de straff <rhyme label="c" type="f">betijden</rhyme>:</l>
        <l id="s1:l5" met="2" type="+-">’tRecht <rhyme label="c" type="f" corresp="#s1:l4">castijden</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Houdt sich binnen sachtheydts <rhyme label="b" type="m" corresp="#s1:l3">maet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">’kHeb soo veel als ick kan <rhyme label="a" type="f">dragen</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Van uw’ <rhyme label="a" type="f" corresp="#s2:l1">plagen</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Laes! ick voel alsnoch de <rhyme label="b" type="m">smert</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Die my uwe pijlen <rhyme label="c" type="f">maken</rhyme>:</l>
        <l id="s2:l5" met="2" type="+-">Want sy <rhyme label="c" type="f" corresp="#s2:l4">raken</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Tot in’t binnenst van mijn <rhyme label="b" type="m" corresp="#s2:l3">hert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Vwe handen, my te <rhyme label="a" type="f">machtigh</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Drucken <rhyme label="a" type="f" corresp="#s3:l1">krachtigh</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">’tHert van sonden-straff <rhyme label="b" type="m">bewust</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Is een beul in all’ de <rhyme label="c" type="f">leden</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">’tSnackt na <rhyme label="c" type="f" corresp="#s3:l4">vreden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Maer vindt nergens heul noch <rhyme label="b" type="m" corresp="#s3:l3">rust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Sulck inwendigh <rhyme label="a" type="f">herten-pijnen</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Doet <rhyme label="a" type="f" corresp="#s4:l1">verquijnen</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">’kVind my wreed’lijck <rhyme label="b" type="m">aengetast</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Van des quaedt-doens <rhyme label="c" type="f">ongenoegen</rhyme>:</l>
        <l id="s4:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s4:l4">’tSonde-wroegen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Is t’ondragelijcken <rhyme label="b" type="m" corresp="#s4:l3">last</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als ick mijn onsinnigh <rhyme label="a" type="f">poogen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Neem voor <rhyme label="a" type="f" corresp="#s5:l1">oogen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">’tLijckt my enckel <rhyme label="b" type="m">etter-dracht</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Ach! hoe leelijck stinckt de <rhyme label="c" type="f">wonde</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Van de <rhyme label="c" type="f" corresp="#s5:l4">sonde</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Alsmen op haer vruchten <rhyme label="b" type="m" corresp="#s5:l3">acht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Onder ’t pack der <rhyme label="a" type="f">ongelucken</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Die my <rhyme label="a" type="f" corresp="#s6:l1">drucken</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Krommen mijne swacke <rhyme label="b" type="m">le’en</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Hert en kleeding dragen <rhyme label="c" type="f">rouwe</rhyme>.</l>
        <l id="s6:l5" met="2" type="+-">Droeff <rhyme label="c" type="f" corresp="#s6:l4">t’aenschouwen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Ga ick heele dagen <rhyme label="b" type="m" corresp="#s6:l3">heen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">’tKranck’righ sonde-smets <rhyme label="a" type="f">vervuylen</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Voel ick <rhyme label="a" type="f" corresp="#s7:l1">schuylen</rhyme></l>
        <l id="s7:l3" met="4" type="+-">In mijn duyster <rhyme label="b" type="m">ingewandt</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Niets aen my off ’theeft sijn <rhyme label="c" type="f">qualen</rhyme>.</l>
        <l id="s7:l5" met="2" type="+-">’tGodloos <rhyme label="c" type="f" corresp="#s7:l4">dwalen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Brengt de ziel in droeven <rhyme label="b" type="m" corresp="#s7:l3">standt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Merch en sap is my <rhyme label="a" type="f">ontweken</rhyme>.</l>
        <l id="s8:l2" met="2" type="+-">’tHert, <rhyme label="a" type="f" corresp="#s8:l1">besweken</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Door de smert, te groot en <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Doet de stem de lucht <rhyme label="c" type="f">vervullen</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Met haer <rhyme label="c" type="f" corresp="#s8:l4">brullen</rhyme>.</l>
        <l id="s8:l6" met="4" type="+-">’tHerte uyt’t sich door <rhyme label="b" type="m" corresp="#s8:l3">gebaer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Heer, ghy weet hoe hert en <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s9:l2" met="2" type="+-">Staen van <rhyme label="a" type="f" corresp="#s9:l1">binnen</rhyme>:</l>
        <l id="s9:l3" met="4" type="+-">Voor uw’Godlijck <rhyme label="b" type="m">aengesicht</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Staen mijn suchten en <rhyme label="c" type="f">gepeynsen</rhyme>.</l>
        <l id="s9:l5" met="2" type="+-">Wie kan <rhyme label="c" type="f" corresp="#s9:l4">veynsen</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Voor het al-door-stralend’ <rhyme label="b" type="m" corresp="#s9:l3">licht</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">’tHert, door angst her-om <rhyme label="a" type="f">gedreven</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Is aen’t <rhyme label="a" type="f" corresp="#s10:l1">beven</rhyme>;</l>
        <l id="s10:l3" met="4" type="+-">Alle krachten leggen <rhyme label="b" type="m">ne’er</rhyme>;</l>
        <l id="s10:l4" met="4" type="+-">D’oogen, door getraen <rhyme label="c" type="f">ontluystert</rhyme></l>
        <l id="s10:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s10:l4">verduystert</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Doen haer ouden plicht niet <rhyme label="b" type="m" corresp="#s10:l3">meer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Die my naest zijn van <rhyme label="a" type="f">naturen</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">Kennis, <rhyme label="a" type="f" corresp="#s11:l1">buren</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Sien mijn quael van verren <rhyme label="b" type="m">aen</rhyme>.</l>
        <l id="s11:l4" met="4" type="+-">Selden sullen vrienden <rhyme label="c" type="f">naken</rhyme></l>
        <l id="s11:l5" met="2" type="+-">Als de <rhyme label="c" type="f" corresp="#s11:l4">saken</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Ongesien en sober <rhyme label="b" type="m" corresp="#s11:l3">staen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Maer die na mijn onheyl <rhyme label="a" type="f">wenschen</rhyme></l>
        <l id="s12:l2" met="2" type="+-">(Boose <rhyme label="a" type="f" corresp="#s12:l1">menschen</rhyme>)</l>
        <l id="s12:l3" met="4" type="+-">Leggen lagen. houden <rhyme label="b" type="m">raedt</rhyme>.</l>
        <l id="s12:l4" met="4" type="+-">D’hater neemt het tot sijn <rhyme label="c" type="f">voordeel</rhyme></l>
        <l id="s12:l5" met="2" type="+-">Als Godts <rhyme label="c" type="f" corresp="#s12:l4">oordeel</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Over sijnen vyandt <rhyme label="b" type="m" corresp="#s12:l3">gaet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Watse vaten. watse <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">Mijne <rhyme label="a" type="f" corresp="#s13:l1">ooren</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Moeten als gehoorloos <rhyme label="b" type="m">zijn</rhyme>.</l>
        <l id="s13:l4" met="4" type="+-">Wat mijn haters <rhyme label="c" type="f">overleggen</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-">Watse <rhyme label="c" type="f" corresp="#s13:l4">seggen</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Stille-swijgen dat is <rhyme label="b" type="m" corresp="#s13:l3">mijn</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Op de bitsche <rhyme label="a" type="f">smaed’lijckheden</rhyme></l>
        <l id="s14:l2" met="2" type="+-">Van haer <rhyme label="a" type="f" corresp="#s14:l1">reden</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Ben ick dooff en stom met <rhyme label="b" type="m">een</rhyme>.</l>
        <l id="s14:l4" met="4" type="+-">Als ellendt den moedt doet <rhyme label="c" type="f">swichten</rhyme>,</l>
        <l id="s14:l5" met="2" type="+-">Hare <rhyme label="c" type="f" corresp="#s14:l4">plichten</rhyme></l>
        <l id="s14:l6" met="4" type="+-">Weyg’ren alle ’smenschen <rhyme label="b" type="m" corresp="#s14:l3">le’en</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Hierentusschen staen en <rhyme label="a" type="f">wachten</rhyme></l>
        <l id="s15:l2" met="2" type="+-">Mijn <rhyme label="a" type="f" corresp="#s15:l1">gedachten</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Heer, in hoop’ en stilt, op <rhyme label="b" type="m">dy</rhyme>.</l>
        <l id="s15:l4" met="4" type="+-">Ghy, mijn Godt, door liefd’ <rhyme label="c" type="f">gedreven</rhyme>,</l>
        <l id="s15:l5" met="2" type="+-">Sult ghy <rhyme label="c" type="f" corresp="#s15:l4">geven</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Dat mijn hoop’ niet ydel <rhyme label="b" type="m" corresp="#s15:l3">zy</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">All’ mijn bidden, all’ mijn <rhyme label="a" type="f">stenen</rhyme></l>
        <l id="s16:l2" met="2" type="+-">Wil hier <rhyme label="a" type="f" corresp="#s16:l1">henen</rhyme>:</l>
        <l id="s16:l3" met="4" type="+-">Dat ghy, Heer niet toe en <rhyme label="b" type="m">laet</rhyme></l>
        <l id="s16:l4" met="4" type="+-">Dat mijn stoute <rhyme label="c" type="f">we’er-partijen</rhyme></l>
        <l id="s16:l5" met="2" type="+-">Sich <rhyme label="c" type="f" corresp="#s16:l4">verblijen</rhyme></l>
        <l id="s16:l6" met="4" type="+-">In mijn al te sob’ren <rhyme label="b" type="m" corresp="#s16:l3">staet</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Op mijns voeten minste <rhyme label="a" type="f">missen</rhyme></l>
        <l id="s17:l2" met="2" type="+-">Off <rhyme label="a" type="f" corresp="#s17:l1">verglissen</rhyme></l>
        <l id="s17:l3" met="4" type="+-">Worden sy vol roems en <rhyme label="b" type="m">koen</rhyme>.</l>
        <l id="s17:l4" met="4" type="+-">Die sijn vyandt siet <rhyme label="c" type="f">verlagen</rhyme></l>
        <l id="s17:l5" met="2" type="+-">Krijght <rhyme label="c" type="f" corresp="#s17:l4">behagen</rhyme></l>
        <l id="s17:l6" met="4" type="+-">In sijn onrechtvaerdigh <rhyme label="b" type="m" corresp="#s17:l3">doen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Haren roem en <rhyme label="a" type="f">leugen-laster</rhyme></l>
        <l id="s18:l2" met="2" type="+-">Schijnt te <rhyme label="a" type="f" corresp="#s18:l1">vaster</rhyme></l>
        <l id="s18:l3" met="4" type="+-">Alsmen d’oogen slaet op <rhyme label="b" type="m">my</rhyme>:</l>
        <l id="s18:l4" met="4" type="+-">Want tot ramp schijn ick <rhyme label="c" type="f">verkoren</rhyme>;</l>
        <l id="s18:l5" met="2" type="+-">Ia <rhyme label="c" type="f" corresp="#s18:l4">geboren</rhyme>;</l>
        <l id="s18:l6" met="4" type="+-">Smert is my gestadigh <rhyme label="b" type="m" corresp="#s18:l3">by</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Wat wil ick my selven <rhyme label="a" type="f">vleyen</rhyme></l>
        <l id="s19:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s19:l1">verleyen</rhyme></l>
        <l id="s19:l3" met="4" type="+-">Ach waer toe moetwillens <rhyme label="b" type="m">dom</rhyme>?</l>
        <l id="s19:l4" met="4" type="+-">Sonden zijn’t, die dese <rhyme label="c" type="f">slagen</rhyme></l>
        <l id="s19:l5" met="2" type="+-">My doen <rhyme label="c" type="f" corresp="#s19:l4">dragen</rhyme>.</l>
        <l id="s19:l6" met="4" type="+-">Alle straff heeft haer <rhyme label="b" type="m" corresp="#s19:l3">waerom</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Anders is’t met haer <rhyme label="a" type="f">gelegen</rhyme></l>
        <l id="s20:l2" met="2" type="+-">Die my <rhyme label="a" type="f" corresp="#s20:l1">tegen</rhyme></l>
        <l id="s20:l3" met="4" type="+-">En ten onrecht vyandt <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s20:l4" met="4" type="+-">Lustigh leven sy en <rhyme label="c" type="f">prachtigh</rhyme>,</l>
        <l id="s20:l5" met="2" type="+-">Groot en <rhyme label="c" type="f" corresp="#s20:l4">machtigh</rhyme>.</l>
        <l id="s20:l6" met="4" type="+-">Spoedt in quaedt, geeft vroomheyts <rhyme label="b" type="m" corresp="#s20:l3">schijn</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Dat my onmoedt moet <rhyme label="a" type="f">geschieden</rhyme></l>
        <l id="s21:l2" met="2" type="+-">Van die <rhyme label="a" type="f" corresp="#s21:l1">lieden</rhyme>,</l>
        <l id="s21:l3" met="4" type="+-">Loonend’ all’ mijn goedt met <rhyme label="b" type="m">quaedt</rhyme>,</l>
        <l id="s21:l4" met="4" type="+-">Is, om datse uyt mijn <rhyme label="c" type="f">wercken</rhyme></l>
        <l id="s21:l5" met="2" type="+-">Deuchdt-lust <rhyme label="c" type="f" corresp="#s21:l4">mercken</rhyme>.</l>
        <l id="s21:l6" met="4" type="+-">Ongelijckheydt oorsaeckt <rhyme label="b" type="m" corresp="#s21:l3">haet</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Wilt my, groote Heer der <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s22:l2" met="2" type="+-">’tHoofdt niet <rhyme label="a" type="f" corresp="#s22:l1">keeren</rhyme>,</l>
        <l id="s22:l3" met="4" type="+-">Weest my by in dese <rhyme label="b" type="m">smart</rhyme>.</l>
        <l id="s22:l4" met="4" type="+-">Doet my hulp, en doetse <rhyme label="c" type="f">spoedigh</rhyme>.</l>
        <l id="s22:l5" met="2" type="+-">’tMaeckt <rhyme label="c" type="f" corresp="#s22:l4">mismoedigh</rhyme></l>
        <l id="s22:l6" met="4" type="+-">Als ’tontset te lange <rhyme label="b" type="m" corresp="#s22:l3">marrt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
