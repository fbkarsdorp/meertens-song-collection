  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Jesu! die in mijn ziel <rhyme label="a" type="f">nu</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Zijt wesentlick <rhyme label="b" type="m">gedaelt</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Mijn sinnen Herstelt van <rhyme label="c" type="f">binnen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Mijn hert met liefde <rhyme label="b" type="m" corresp="#s1:l2">straelt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Scheyd nimmermeer Van my nu, <rhyme label="d" type="m">Heer</rhyme>!</l>
        <l id="s1:l6" met="4" type="-+">Dat ick tot sonde niet en <rhyme label="d" type="m" corresp="#s1:l5">keer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Werelt Soo valsch <rhyme label="a" type="f">beperelt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En Satan van my <rhyme label="b" type="m">jaeght</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Verteeren Doet 's vleysch <rhyme label="c" type="f">begeeren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Neemt wegh, dat u <rhyme label="b" type="m" corresp="#s2:l2">mishaeght</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Leeft, Iesu, ghy Alleen in <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En maer in u mijn leven <rhyme label="d" type="m" corresp="#s2:l5">zy</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">My stercken In goeden <rhyme label="a" type="f">wercken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Laet de kracht deser <rhyme label="b" type="m">spijs'</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">U zegen Geeft in mijn <rhyme label="c" type="f">wegen</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Dat ick ter deught <rhyme label="b" type="m" corresp="#s3:l2">verriis</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Mijn ziel besproeyt, Op datse <rhyme label="d" type="m">bloeyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En altijt in u liefde <rhyme label="d" type="m" corresp="#s3:l5">groeyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O goetheyt! mijns levens <rhyme label="a" type="f">soetheyt</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Godt t' samen, ende <rhyme label="b" type="m">Mensch</rhyme>!</l>
        <l id="s4:l3" met="3" type="-+">Eer 't leven Komt te <rhyme label="c" type="f">begeven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Doet my 't geen' ick soo <rhyme label="b" type="m" corresp="#s4:l2">wensch</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Voor mijne doodt Dit hemels <rhyme label="d" type="m">broodt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Vergunt my in den lesten <rhyme label="d" type="m" corresp="#s4:l5">noodt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">U derven, Is eeuwigh <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">By-wesen, altijt <rhyme label="b" type="m">vreught</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Na 't scheyden, Wilt my <rhyme label="c" type="f">geleyden</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Dat ick u sie <rhyme label="b" type="m" corresp="#s5:l2">verheught</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Niet meer gericht In broodts <rhyme label="d" type="m">gesicht</rhyme>;</l>
        <l id="s5:l6" met="4" type="-+">Maer onbedeckt in 't eeuwigh <rhyme label="d" type="m" corresp="#s5:l5">licht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
