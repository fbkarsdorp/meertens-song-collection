  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Een nieuw Liedt om te <rhyme label="a" type="f">verstercken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En verweckend’ herten <rhyme label="b" type="m">reen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Om neerstigh Godts Woordt <rhyme label="a" type="f" corresp="#s1:l1">t’aenmercken</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Als Godts Kinderen sijn by <rhyme label="b" type="m" corresp="#s1:l2">een</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dan komt oock de Satan <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die als een Leeuw ronts om <rhyme label="c" type="m" corresp="#s1:l5">gaet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Soeckt uyt ons herten te <rhyme label="d" type="f">keere</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Godts Zalighmaecken <rhyme label="d" type="f" corresp="#s1:l7">leere</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Laet ons den Heeren nu <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En bidden hem met <rhyme label="b" type="m">ootmoedt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dat hy ons zielen wil <rhyme label="a" type="f" corresp="#s2:l1">spijsen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Met ‘t Hemelsche broodt seer <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">’t Welck is u levende Woort <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Gheeft elck mensch nae sijn <rhyme label="c" type="m" corresp="#s2:l5">begheer</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Sulcken lust ende smaeck <rhyme label="d" type="f">even</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Als ghy Isrel hebt <rhyme label="d" type="f" corresp="#s2:l7">ghegheven</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gheeft door uwen gheest <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">(Heer) u Dienaers kracht <rhyme label="b" type="m">altijdt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Datse eer u name <rhyme label="a" type="f" corresp="#s3:l1">gheven</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">End’ u volck neerstigh met <rhyme label="b" type="m" corresp="#s3:l2">vlijt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Recht weyden met wijsheyt <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En door u Heylsame <rhyme label="c" type="m" corresp="#s3:l5">Leer</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Den over-treders recht <rhyme label="d" type="f">leeren</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Datse haer tot u <rhyme label="d" type="f" corresp="#s3:l7">bekeeren</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Met Lidia laet o <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Ons harten sijn op <rhyme label="b" type="m">ghedaen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dat wy u Woort ende <rhyme label="a" type="f" corresp="#s4:l1">leere</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Recht hooren en wel <rhyme label="b" type="m" corresp="#s4:l2">verstaen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Op dat van ons met <rhyme label="c" type="m">aendacht</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">U Heyl’ghe wil wert <rhyme label="c" type="m" corresp="#s4:l5">volbracht</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Hier toe o Heer wilt ons <rhyme label="d" type="f">by-staen</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Op dat wy eyndlijck niet <rhyme label="d" type="f" corresp="#s4:l7">vergaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
