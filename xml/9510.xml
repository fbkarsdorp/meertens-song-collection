    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEer, hoe snel vergaen de <rhyme label="a" type="f">Iaren</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Als de <rhyme label="a" type="f" corresp="#s1:l1">baren</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Snedigh volgen op <rhyme label="b" type="m">malka'er</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Soo is nu dit Iaer <rhyme label="c" type="f">verscheenen</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s1:l4">verdweenen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Als of 't noyt gheweest en <rhyme label="b" type="m" corresp="#s1:l3">waer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als de pijlen van de <rhyme label="a" type="f">Boghen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-"><rhyme label="a" type="f" corresp="#s2:l1">Af-gevloghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Schielijck dringhen door de <rhyme label="b" type="m">lucht</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Even soo, ja noch veel <rhyme label="c" type="f">snelder</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Tien-mael <rhyme label="c" type="f" corresp="#s2:l4">felder</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Is de tijdt in hare <rhyme label="b" type="m" corresp="#s2:l3">vlucht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hebben wy geen vrucht <rhyme label="a" type="f">ghesneden</rhyme></l>
        <l id="s3:l2" met="2" type="+-">'t Jaer <rhyme label="a" type="f" corresp="#s3:l1">voor-leden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die voor Gode mach <rhyme label="b" type="m">bestaen</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Laet ons nu met alle <rhyme label="c" type="f">krachten</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Vlijtigh <rhyme label="c" type="f" corresp="#s3:l4">trachten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dat wy beter ganghen <rhyme label="b" type="m" corresp="#s3:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Siet eens, dat in d'aerd' <rhyme label="a" type="f">besturven</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Scheen <rhyme label="a" type="f" corresp="#s4:l1">verdurven</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Sal haest komen voor den <rhyme label="b" type="m">dach</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Aenghenamer dan te <rhyme label="c" type="f">vooren</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s4:l4">Nieu-ghebooren</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En veel schoonder als het <rhyme label="b" type="m" corresp="#s4:l3">plach</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Laet ons met dees' nieuwe <rhyme label="a" type="f">tyen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Ons oock <rhyme label="a" type="f" corresp="#s5:l1">vlyen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Om te werden jongh en <rhyme label="b" type="m">nieu</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Alle boosheyt van ons <rhyme label="c" type="f">legghen</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">En gaen <rhyme label="c" type="f" corresp="#s5:l4">segghen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">'s Werelts ydelheydt <rhyme label="b" type="m" corresp="#s5:l3">Adieu</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dat wy namaels niet en <rhyme label="a" type="f">klaghen</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Want de <rhyme label="a" type="f" corresp="#s6:l1">daghen</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Zijn gaer weynigh, boos en <rhyme label="b" type="m">kort</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Denckt, hoe menigh in het <rhyme label="c" type="f">bloeyen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">En het <rhyme label="c" type="f" corresp="#s6:l4">groeyen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Van sijn Ieucht, geslaghen <rhyme label="b" type="m" corresp="#s6:l3">wordt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Al hoe moedigh wy nu <rhyme label="a" type="f">schijnen</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Sonder <rhyme label="a" type="f" corresp="#s7:l1">quijnen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Sonder letsel, sonder <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Wie weet, of wy met <rhyme label="c" type="f">malkander</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Tot het <rhyme label="c" type="f" corresp="#s7:l4">ander</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Iaer, op aerde sullen <rhyme label="b" type="m" corresp="#s7:l3">zijn</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ia, dat niet en is <rhyme label="a" type="f">t'ontvlieden</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">'t Kan <rhyme label="a" type="f" corresp="#s8:l1">geschieden</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Morghen eer de Sonnen <rhyme label="b" type="m">rijst</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Dat de Wormen, dat de <rhyme label="c" type="f">Pieren</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">En meer <rhyme label="c" type="f" corresp="#s8:l4">dieren</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Van dit lichaem zijn <rhyme label="b" type="m" corresp="#s8:l3">ghespijst</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Siet my aen, al ben ick <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s9:l2" met="2" type="+-">Fris van <rhyme label="a" type="f" corresp="#s9:l1">leden</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Als een varsch ontloocken <rhyme label="b" type="m">Roos</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Eer het swart de Landen <rhyme label="c" type="f">decket</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s9:l4">betrecket</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Kan ick legghen <rhyme label="b" type="m" corresp="#s9:l3">ziele-loos</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Dus, al staet u Hof vol <rhyme label="a" type="f">Bloemen</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Wilt niet <rhyme label="a" type="f" corresp="#s10:l1">roemen</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Want oock op een koude <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Kan haer luyster, en haer <rhyme label="c" type="f">brallen</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s10:l4">Neder-vallen</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">En haest zijn tot niet <rhyme label="b" type="m" corresp="#s10:l3">gebracht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Soo onseecker is het <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s11:l2" met="2" type="+-">Ons <rhyme label="a" type="f" corresp="#s11:l1">gegheven</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Dat wy weten niet met <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Op wat uyr, of tijdt, de <rhyme label="c" type="f">Koningh</rhyme></l>
        <l id="s11:l5" met="2" type="+-">Onse <rhyme label="c" type="f" corresp="#s11:l4">wooningh</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Van het licht berooven <rhyme label="b" type="m" corresp="#s11:l3">sal</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Dat wy daerom onse <rhyme label="a" type="f">saecken</rhyme></l>
        <l id="s12:l2" met="2" type="+-">Vaerdigh <rhyme label="a" type="f" corresp="#s12:l1">maecken</rhyme>.</l>
        <l id="s12:l3" met="4" type="+-">Waecken, dat wy <rhyme label="b" type="m">onverdacht</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Niet en werden <rhyme label="c" type="f">wegh-genomen</rhyme>,</l>
        <l id="s12:l5" met="2" type="+-">Als hy <rhyme label="c" type="f" corresp="#s12:l4">komen</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Sal, in d'eerst' of tweede <rhyme label="b" type="m" corresp="#s12:l3">wacht</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Hoe de sorgheloose <rhyme label="a" type="f">Maeghden</rhyme></l>
        <l id="s13:l2" met="2" type="+-">Haer <rhyme label="a" type="f" corresp="#s13:l1">beklaeghden</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Doe men haer niet in en <rhyme label="b" type="m">liet</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Kan men dencken uyt de <rhyme label="c" type="f">woorden</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-">Die sy <rhyme label="c" type="f" corresp="#s13:l4">hoorden</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Segghend'; Ick en ken u <rhyme label="b" type="m" corresp="#s13:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Om dit onheyl niet te <rhyme label="a" type="f">wachten</rhyme>,</l>
        <l id="s14:l2" met="2" type="+-">Laet ons <rhyme label="a" type="f" corresp="#s14:l1">trachten</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Dat altijdt de Lampe <rhyme label="b" type="m">brandt</rhyme>:</l>
        <l id="s14:l4" met="4" type="+-">Dat wy moghen met de <rhyme label="c" type="f">Wijse</rhyme>,</l>
        <l id="s14:l5" met="2" type="+-">Eenen <rhyme label="c" type="f" corresp="#s14:l4">prijse</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Krijghen in ons <rhyme label="b" type="m" corresp="#s14:l3">Vaderlandt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Dit wil ons de Heere <rhyme label="a" type="f">gunnen</rhyme>,</l>
        <l id="s15:l2" met="2" type="+-">Dat wy <rhyme label="a" type="f" corresp="#s15:l1">kunnen</rhyme></l>
        <l id="s15:l3" met="4" type="+-">Staende blijven met <rhyme label="b" type="m">malka'er</rhyme>:</l>
        <l id="s15:l4" met="4" type="+-">Sijnen Geest wil met ons <rhyme label="c" type="f">wercken</rhyme>,</l>
        <l id="s15:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s15:l4">verstercken</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Onsen Geest, in 't <rhyme label="b" type="m" corresp="#s15:l3">Nieuwe-Iaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
