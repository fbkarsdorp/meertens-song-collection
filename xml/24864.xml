        <l id="s1:l5" met="2" type="+-">Bedroghen <rhyme label="b" type="f" corresp="#s1:l3">bliven</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Seikerlijch die di wael <rhyme label="a" type="m" corresp="#s1:l1">jan</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Hi sal di endelijch der <rhyme label="a" type="m" corresp="#s1:l1">van</rhyme></l>
