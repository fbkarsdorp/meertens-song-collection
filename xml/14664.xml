    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIe sal mijn nu doch heden <rhyme label="a" type="f">geven</rhyme></l>
        <l id="s1:l2" met="4" type="-+">De vleugh'len van een <rhyme label="b" type="m">Seraphin</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op dat ick eens mach opwaerts <rhyme label="a" type="f" corresp="#s1:l1">sweven</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Aen't Cruyce van dien ick <rhyme label="b" type="m" corresp="#s1:l2">bemin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Recht als een Duyfje inde <rhyme label="a" type="f">gaten</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Van een Steen-rots sijn ruste <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo soud ick mijn oock vinden <rhyme label="a" type="f" corresp="#s2:l1">laeten</rhyme></l>
        <l id="s2:l4" met="4" type="-+">in Iesus wonden root <rhyme label="b" type="m" corresp="#s2:l2">bebloet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer soud ick sien hoe dat de <rhyme label="a" type="f">Beecken</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Neer vloeyen vande Doornen <rhyme label="b" type="m">of</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En hoe sijn handen sijn <rhyme label="a" type="f" corresp="#s3:l1">door-steecken</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Met drie ijser naghelen <rhyme label="b" type="m" corresp="#s3:l2">grof</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick soud sijn roode borst <rhyme label="a" type="f">om-ermen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En kussen hem sijn bleecke <rhyme label="b" type="m">mondt</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Roepen o Heer, wilt mijn <rhyme label="a" type="f" corresp="#s4:l1">ontfermen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die dus om my nu sijt <rhyme label="b" type="m" corresp="#s4:l2">ghewondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe soud ick niet nae hem <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die ick dus aen een Cruyce <rhyme label="b" type="m">hout</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Als een misdadigh op sie <rhyme label="a" type="f" corresp="#s5:l1">hanghen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Om mijnen sonde <rhyme label="b" type="m" corresp="#s5:l2">menighfout</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Comt nu o Is'rel met <rhyme label="a" type="f">betrouwen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">En heft uw' ooghen inde <rhyme label="b" type="m">locht</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wilt uwen Coningh nu <rhyme label="a" type="f" corresp="#s6:l1">aenschouwen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Siet hoe hy is om u <rhyme label="b" type="m" corresp="#s6:l2">verkocht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Siet hoe de traentjes uyt sijn <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Neer loopen als Fonteynen <rhyme label="b" type="m">klaer</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Van pijne die hy moet <rhyme label="a" type="f" corresp="#s7:l1">ghedooghen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Want hem de nagh'len wroeten <rhyme label="b" type="m" corresp="#s7:l2">swaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">En roept van pijn, met heescher <rhyme label="a" type="f">keele</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Mijn Godt waeromme soo hebt <rhyme label="b" type="m">ghy</rhyme></l>
        <l id="s8:l3" met="4" type="-+">My dus verlaten, want ick <rhyme label="a" type="f" corresp="#s8:l1">vele</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Om't soecken van u Schaepje <rhyme label="b" type="m" corresp="#s8:l2">ly'</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dit lijden offer ick u <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Ick offer u mijn selven <rhyme label="b" type="m">veur</rhyme></l>
        <l id="s9:l3" met="4" type="-+">De siel, mijn Bruyt ick weet geen <rhyme label="a" type="f" corresp="#s9:l1">naeder</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Opent voor haer doch 'sHemels <rhyme label="b" type="m" corresp="#s9:l2">deur</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">In uwen handen doen ick <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Bevelen mijn bedruckten <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ick breng' den mensch' hier peys, en <rhyme label="a" type="f" corresp="#s10:l1">vrede</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En eeuwelijck des Hemels <rhyme label="b" type="m" corresp="#s10:l2">Feest</rhyme>.</l>
      </lg>
    </lg>
  </text>
