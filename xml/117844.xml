  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heere ! God, <rhyme label="a" type="f">Genaadig</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Barmhertig zonder <rhyme label="b" type="m">maat</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Lankmoedig en <rhyme label="a" type="f" corresp="#s1:l1">weldaadig</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Vergevend' alle <rhyme label="b" type="m" corresp="#s1:l2">quaadt</rhyme>!</l>
        <l id="s1:l5" met="4" type="-+">'t Is goed uw' naam te <rhyme label="c" type="f">psalmen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Dus in den <rhyme label="d" type="m">morgen-stond</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">En 's nagts met heyl'ge <rhyme label="c" type="f" corresp="#s1:l5">galmen</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Uw' goedheyd maaken <rhyme label="d" type="m" corresp="#s1:l6">kond</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als wy ons tot u <rhyme label="a" type="f">schicken</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Des morgens vroeg, <rhyme label="b" type="m">wanneer</rhyme></l>
        <l id="s2:l3" met="4" type="-+">De dag begint te <rhyme label="a" type="f" corresp="#s2:l1">blicken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hoort gy ons' stem, o <rhyme label="b" type="m" corresp="#s2:l2">Heer</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Dies komen ons' <rhyme label="c" type="f">gebeden</rhyme></l>
        <l id="s2:l6" met="4" type="-+">U Voor in 't <rhyme label="d" type="m">morgenlicht</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Wilt niet verbergen <rhyme label="c" type="f" corresp="#s2:l5">heden</rhyme></l>
        <l id="s2:l8" met="4" type="-+">U vriendlick <rhyme label="d" type="m" corresp="#s2:l6">aengesicht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laet u doch <rhyme label="a" type="f">welbehagen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ons' morgen-offer <rhyme label="b" type="m">nu</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het welcke wy <rhyme label="a" type="f" corresp="#s3:l1">opdragen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">O groote Godt, aen <rhyme label="b" type="m" corresp="#s3:l2">u</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Laet doch den reuck <rhyme label="c" type="f">opvaren</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Van 't offer, dat nu <rhyme label="d" type="m">wert</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Gebracht van uw <rhyme label="c" type="f" corresp="#s3:l5">dienaren</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Uyt een gebroken <rhyme label="d" type="m" corresp="#s3:l6">hert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Gy toont ons alle <rhyme label="a" type="f">morgen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Op 't nieuwe klaer en <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat gy ons wilt <rhyme label="a" type="f" corresp="#s4:l1">versorgen</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Uw trouwheit is seer <rhyme label="b" type="m" corresp="#s4:l2">groot</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">'t Zijn uw goetheden, <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dat wy niet zijn <rhyme label="d" type="m">vernielt</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">U geven wy all' <rhyme label="c" type="f" corresp="#s4:l5">d'eere</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Dat wy niet zijn <rhyme label="d" type="m" corresp="#s4:l6">ontzielt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Gy hebt ons uw' <rhyme label="a" type="f">weldaden</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Noch dees' voorleden <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Bewesen uyt <rhyme label="a" type="f" corresp="#s5:l1">genaden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">End' hebt gehouden <rhyme label="b" type="m" corresp="#s5:l2">wacht</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Al lagen wy in 't <rhyme label="c" type="f">duyster</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Het kond' ons schaden <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Dewyl gy uwen <rhyme label="c" type="f" corresp="#s5:l5">luyster</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Rondom ons schijnen <rhyme label="d" type="m" corresp="#s5:l6">liet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gy hebt op onse <rhyme label="a" type="f">straten</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Geen nacht-gekrijsch, <rhyme label="b" type="m">alarm</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Noch oproer komen <rhyme label="a" type="f" corresp="#s6:l1">laten</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Staeg waekt' uw sterken <rhyme label="b" type="m" corresp="#s6:l2">arm</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Van sieckten, qualen, <rhyme label="c" type="f">rampen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En alderhande <rhyme label="d" type="m">quaed</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Welk ons soo licht aen <rhyme label="c" type="f" corresp="#s6:l5">klampen</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">En zijn wy niet <rhyme label="d" type="m" corresp="#s6:l6">beschaedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ja Herder uwer <rhyme label="a" type="f">schapen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Wyl gy ons hebt <rhyme label="b" type="m">bewaert</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Soo hebben wy <rhyme label="a" type="f" corresp="#s7:l1">geslapen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">In vreed' en <rhyme label="b" type="m" corresp="#s7:l2">onvervaert</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Geen quaed kond ons <rhyme label="c" type="f">genaken</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Wijl gy op schilt-wacht <rhyme label="d" type="m">stont</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">Dies komen wy <rhyme label="c" type="f" corresp="#s7:l5">t'ontwaken</rhyme></l>
        <l id="s7:l8" met="4" type="-+">Verfrischt en <rhyme label="d" type="m" corresp="#s7:l6">welgesont</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gy Heer die hebt <rhyme label="a" type="f">begonnen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">In ons het goede <rhyme label="b" type="m">werck</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Wilt ons voortaen oock <rhyme label="a" type="f" corresp="#s8:l1">jonnen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Uw' hulp in krachten <rhyme label="b" type="m" corresp="#s8:l2">sterck</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Wilt ons voortaen <rhyme label="c" type="f">geleyden</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Door uwen Heyl'gen <rhyme label="d" type="m">Geest</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Die niet van ons mag <rhyme label="c" type="f" corresp="#s8:l5">scheyden</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Soo zijn wy <rhyme label="d" type="m" corresp="#s8:l6">onbevreest</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O God seer groot in <rhyme label="a" type="f">machten</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Gy die uw' Kind'ren <rhyme label="b" type="m">kent</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Gy weet ons' kleine <rhyme label="a" type="f" corresp="#s9:l1">krachten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dies u doch tot ons <rhyme label="b" type="m" corresp="#s9:l2">wendt</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Laet ons uw' aenschijn <rhyme label="c" type="f">lichten</rhyme></l>
        <l id="s9:l6" met="4" type="-+">In gunst en <rhyme label="d" type="m">vriendlickheyt</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Op dat wy wel <rhyme label="c" type="f" corresp="#s9:l5">verrichten</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">Het ampt ons <rhyme label="d" type="m" corresp="#s9:l6">opgeleyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Het is doch niet <rhyme label="a" type="f">gelegen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">O Heere, by den <rhyme label="b" type="m">mensch</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Te keeren sijne <rhyme label="a" type="f" corresp="#s10:l1">wegen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Na sijnen wil en <rhyme label="b" type="m" corresp="#s10:l2">wensch</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Daerom wilt gy <rhyme label="c" type="f">verstercken</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Die alle ding <rhyme label="d" type="m">regeert</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">All' onser handen <rhyme label="c" type="f" corresp="#s10:l5">wercken</rhyme>:</l>
        <l id="s10:l8" met="4" type="-+">Soo sult gy zijn <rhyme label="d" type="m" corresp="#s10:l6">ge-eert</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Gy die ons hebt <rhyme label="a" type="f">ontbonden</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Van 's Lichaems slaep, o <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Wilt uyt den slaep der <rhyme label="a" type="f" corresp="#s11:l1">sonden</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Ons wecken meer en <rhyme label="b" type="m" corresp="#s11:l2">meer</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Verlicht ons' duyster <rhyme label="c" type="f">oogen</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Door glans uws <rhyme label="d" type="m">aengesichts</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Op dat wy wandlen <rhyme label="c" type="f" corresp="#s11:l5">moogen</rhyme></l>
        <l id="s11:l8" met="4" type="-+">Als kinderen des <rhyme label="d" type="m" corresp="#s11:l6">lichts</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">U woord laat altydt <rhyme label="a" type="f">lichten</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Gelijck een lampe <rhyme label="b" type="m">klaar</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Waer na wy mogen <rhyme label="a" type="f" corresp="#s12:l1">richten</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Ons' dagen <rhyme label="b" type="m" corresp="#s12:l2">allegaer</rhyme>.</l>
        <l id="s12:l5" met="4" type="-+">Geeft dat wy niet en <rhyme label="c" type="f">schroomen</rhyme></l>
        <l id="s12:l6" met="4" type="-+">Te wercken by den <rhyme label="d" type="m">dag</rhyme>:</l>
        <l id="s12:l7" met="4" type="-+">Een lange nacht sal <rhyme label="c" type="f" corresp="#s12:l5">komen</rhyme></l>
        <l id="s12:l8" met="4" type="-+">Dat niemant wercken <rhyme label="d" type="m" corresp="#s12:l6">mag</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">O Christe <rhyme label="a" type="f">Morgen-sterre</rhyme>!</l>
        <l id="s13:l2" met="4" type="-+">Son der <rhyme label="b" type="m">gerechtigheyt</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Gaen wy van u wat <rhyme label="a" type="f" corresp="#s13:l1">verre</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Geeft dat u licht ons <rhyme label="b" type="m" corresp="#s13:l2">leydt</rhyme>:</l>
        <l id="s13:l5" met="4" type="-+">Leert ons voorsichtig <rhyme label="c" type="f">loopen</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">In ons' gestelde <rhyme label="d" type="m">baen</rhyme></l>
        <l id="s13:l7" met="4" type="-+">Den goeden tijd uyt <rhyme label="c" type="f" corresp="#s13:l5">koopen</rhyme></l>
        <l id="s13:l8" met="4" type="-+">Die haest voorby sal <rhyme label="d" type="m" corresp="#s13:l6">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
