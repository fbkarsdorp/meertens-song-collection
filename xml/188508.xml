    <melody>Silvester in de morgenstond</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GEliefjes, die u in den <rhyme label="a" type="m">Echt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Door liefde t' samen <rhyme label="b" type="m">bindt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hoe zijt ghy doch soo wel <rhyme label="a" type="m" corresp="#s1:l1">berecht</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat ghy 't soo jongh <rhyme label="b" type="m" corresp="#s1:l2">begint</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">Bedanck u vry van dese <rhyme label="c" type="m">koop</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gebruyckt nu alle <rhyme label="d" type="m">vreught</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Ghy krijght het soet nu over <rhyme label="c" type="m" corresp="#s1:l5">hoop</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">In 't Bloemtje van uw' <rhyme label="d" type="m" corresp="#s1:l6">jeught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Was stadich niet uws herten <rhyme label="a" type="m">wensch</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hier wel te zijn <rhyme label="b" type="m">gepaert</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Met sulck een jongh, en jeughdigh <rhyme label="a" type="m" corresp="#s2:l1">Mensch</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In 't willen eens <rhyme label="b" type="m" corresp="#s2:l2">geaert</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">En is uw' wensch hier in <rhyme label="c" type="m">geschiet</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Het Huys, en sijn <rhyme label="d" type="m">behoor</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Dat sal u oock ontbreecken <rhyme label="c" type="m" corresp="#s2:l5">niet</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Volght ghy der deughden <rhyme label="d" type="m" corresp="#s2:l6">spoor</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En schoon ghy daegh'lijcks eten <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hebt daerom geene <rhyme label="b" type="m">sorgh</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Godt, die de jonge Ravens <rhyme label="a" type="m" corresp="#s3:l1">voedt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die is daer voor u <rhyme label="b" type="m" corresp="#s3:l2">borgh</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">En soo de Heer met <rhyme label="c" type="m">vruchtbaerheydt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">U Huwelijck <rhyme label="d" type="m">bekroont</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Met voorspoet in uw' <rhyme label="c" type="m" corresp="#s3:l5">arrebeydt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Hy u 't behoef <rhyme label="d" type="m" corresp="#s3:l6">vertoont</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daerom, o Nieuw-vereende <rhyme label="a" type="m">Twee</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Betrouwt op Godt den <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Leeft onderlingh in Liefd', en <rhyme label="a" type="m" corresp="#s4:l1">Vree</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Soo sal na u <rhyme label="b" type="m" corresp="#s4:l2">begeer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">U Huwelijck ghezegent <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In al wat u <rhyme label="d" type="m">ontmoet</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Al was 't voor somm'ge suer' <rhyme label="c" type="m" corresp="#s4:l5">Azijn</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">'t Verkeert u al in 't <rhyme label="d" type="m" corresp="#s4:l6">soet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
