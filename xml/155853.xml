  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">ALs <rhyme label="a" type="m">d'Hongers-noot</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Samaria <rhyme label="b" type="f">benauwde</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dewijle den <rhyme label="c" type="m">vyandt</rhyme></l>
        <l id="s1:l4" met="2" type="-+">De Stadt <rhyme label="a" type="m" corresp="#s1:l1">besloot</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soo dat elcks hert <rhyme label="b" type="f" corresp="#s1:l2">verflauwde</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En viel in het <rhyme label="c" type="m" corresp="#s1:l3">voet-zandt</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Soo sprack in die <rhyme label="c" type="m" corresp="#s1:l3">stant</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Een Ridder, wilt niet <rhyme label="d" type="f">dencken</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Dat Godt sal, in dit <rhyme label="e" type="m">gheval</rhyme></l>
        <l id="s1:l10" met="3" type="+-">V sijnen seghen <rhyme label="d" type="f" corresp="#s1:l8">schencken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Al stont een <rhyme label="a" type="m">Luyck</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In 's Hemels-Solder <rhyme label="b" type="f">open</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En dat ick 't self kond <rhyme label="c" type="m">sien</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Noch soud' mijn <rhyme label="a" type="m" corresp="#s2:l1">Buyck</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Daer uyt gheen spijse <rhyme label="b" type="f" corresp="#s2:l2">hopen</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Want, hoe kan het <rhyme label="c" type="m" corresp="#s2:l3">gheschien</rhyme>?</l>
        <l id="s2:l7" met="3" type="+-">Maer onlanghs na <rhyme label="c" type="m" corresp="#s2:l3">dien</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Soo wordt het <rhyme label="d" type="f">uytgemeten</rhyme>:</l>
        <l id="s2:l9" met="4" type="-+">Hy sach 't an // maer heeft daer <rhyme label="e" type="m">van</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Self niet-met-al <rhyme label="d" type="f" corresp="#s2:l8">ghe-eten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Godts <rhyme label="a" type="m">eygendom</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En d'Appel sijnder <rhyme label="b" type="f">Ooghe</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat is, sijn waerde <rhyme label="c" type="m">volck</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Is hier <rhyme label="a" type="m" corresp="#s3:l1">rondom</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Met jammer <rhyme label="b" type="f" corresp="#s3:l2">overtoghen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Als met een donck're <rhyme label="c" type="m" corresp="#s3:l3">Wolck</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">Maer uyt desen <rhyme label="c" type="m" corresp="#s3:l3">Kolck</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Van jammer, en <rhyme label="d" type="f">ellenden</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Hier beneÃªn // sal Godt haer <rhyme label="e" type="m">heen</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Na d hoogen Hemel <rhyme label="d" type="f" corresp="#s3:l8">senden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">En met de <rhyme label="a" type="m">pracht</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van Glory, sal daer <rhyme label="b" type="f">boven</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Godt proncken dese <rhyme label="c" type="m">schaer</rhyme>:</l>
        <l id="s4:l4" met="2" type="-+">Hoewel 't <rhyme label="a" type="m" corresp="#s4:l1">gheslacht</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Der Boosen 't niet <rhyme label="b" type="f" corresp="#s4:l2">gheloove</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En denckt: het is niet <rhyme label="c" type="m" corresp="#s4:l3">waer</rhyme>:</l>
        <l id="s4:l7" met="3" type="+-">Nochtans soo sal <rhyme label="c" type="m" corresp="#s4:l3">daer</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Al die dit niet <rhyme label="d" type="f">vertrouwen</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Haer ghesicht // de glans van 't <rhyme label="e" type="m">licht</rhyme></l>
        <l id="s4:l10" met="3" type="+-">Der Salighen, <rhyme label="d" type="f" corresp="#s4:l8">aenschouwen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Terwijl daer <rhyme label="a" type="m">van</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sy self niet en <rhyme label="b" type="f">ghenieten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Hoe wel 't haer ooghe <rhyme label="c" type="m">siet</rhyme>:</l>
        <l id="s5:l4" met="2" type="-+">En schoon sy <rhyme label="a" type="m" corresp="#s5:l1">dan</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Een Traene-Stroom <rhyme label="b" type="f" corresp="#s5:l2">uytgieten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Het baert te meer <rhyme label="c" type="m" corresp="#s5:l3">verdriet</rhyme>.</l>
        <l id="s5:l7" met="3" type="+-">Volght haer gangh dan <rhyme label="c" type="m" corresp="#s5:l3">niet</rhyme>:</l>
        <l id="s5:l8" met="3" type="-+">Maer voeght u by die <rhyme label="d" type="f">ghenen</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Daer aen Godt, het Heerlick <rhyme label="e" type="m">Lot</rhyme></l>
        <l id="s5:l10" met="3" type="+-">Des Hemels, wil <rhyme label="d" type="f" corresp="#s5:l8">verlenen</rhyme>.</l>
      </lg>
    </lg>
  </text>
