      <category translation="emotions">emoties</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Der werlts myn is al <rhyme label="a" type="f">verloren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ay want men gheen ghetrou en <rhyme label="b" type="m">vijnt</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Och lacy, wat had ic <rhyme label="a" type="f" corresp="#s1:l1">vercoren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Doe ic haer mit solaes <rhyme label="b" type="m" corresp="#s1:l2">ontfinck</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och sonden heeft sy boven <rhyme label="a" type="f">maten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Op my gheladen menich <rhyme label="b" type="m">jaer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ende nu soudic haer gheerne <rhyme label="a" type="f" corresp="#s2:l1">laten</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Dat sceyden valt my al te <rhyme label="b" type="m" corresp="#s2:l2">zwaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och tsceyden dat moet ymmer <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">10 Van deser werrelt op eenre <rhyme label="b" type="m">tijt</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Dus sucht ic dic van groter <rhyme label="a" type="f" corresp="#s3:l1">vresen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Want qualic heb ic my <rhyme label="b" type="m" corresp="#s3:l2">ghequijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ic mach wel suchten ende <rhyme label="a" type="f">beven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Als ic sel sceyden van <rhyme label="b" type="m">eertrijc</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">15 Want reden sel ic moeten <rhyme label="a" type="f" corresp="#s4:l1">gheven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van al mijn sonden <rhyme label="b" type="m" corresp="#s4:l2">haestelic</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och lacy, ic en weet gheen <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Voer tmynste dat ic heb <rhyme label="b" type="m">ghedaen</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Och, had ict oerdel wel <rhyme label="a" type="f" corresp="#s5:l1">gheleden</rhyme>!</l>
        <l id="s5:l4" met="3" type="-+">20 My gruwelt seer ter antwert <rhyme label="b" type="m" corresp="#s5:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Och, mocht ic gracy nu <rhyme label="a" type="f">bewarven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Voer al mijn sonden; twaer my <rhyme label="b" type="m">goet</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Want alst gheeft tijt dat ic sel <rhyme label="a" type="f" corresp="#s6:l1">sterven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En sel ics hebben ghenen <rhyme label="b" type="m" corresp="#s6:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hier om waert goet, const ic my <rhyme label="a" type="f">gheven</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Te dienen Jhesu vlus ter <rhyme label="b" type="m">stont</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Want of ic noch een uyr sel <rhyme label="a" type="f" corresp="#s7:l1">leven</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En weet ic nijt of sijn <rhyme label="b" type="m" corresp="#s7:l2">ghesont</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och, hoe bin ic dus traech int <rhyme label="a" type="f">sceyden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">30 Van deser werrelts <rhyme label="b" type="m">ydelheyt</rhyme>?</l>
        <l id="s8:l3" met="4" type="-+">Ic weet nochtans: tis scarp te <rhyme label="a" type="f" corresp="#s8:l1">beyden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Want altoes is die doot <rhyme label="b" type="m" corresp="#s8:l2">bereyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Och, warwert sel ic my nu <rhyme label="a" type="f">keren</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Daer ic sel moghen troest <rhyme label="b" type="m">ontfaen</rhyme>?</l>
        <l id="s9:l3" met="4" type="-+">35 Al eyst mijn hert, tis mijn <rhyme label="a" type="f" corresp="#s9:l1">begheren</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Der werrelts vruechde of te <rhyme label="b" type="m" corresp="#s9:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Och, waren Jhesu mijn <rhyme label="a" type="f">ghebeden</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die ic sel doen, <rhyme label="b" type="m">ontfanckelic</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">End mocht mijn ziel comen in <rhyme label="a" type="f" corresp="#s10:l1">vreden</rhyme></l>
        <l id="s10:l4" met="3" type="-+">40 By hem daer boven in <rhyme label="b" type="m" corresp="#s10:l2">hemmelrijc</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">So waer ic vry van allen <rhyme label="a" type="f">sorghen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">End ic woud singhen mit <rhyme label="b" type="m">jolijt</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Altoes van tsavonts totter <rhyme label="a" type="f" corresp="#s11:l1">morghen</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">'Jhesus moet sijn <rhyme label="b" type="m" corresp="#s11:l2">ghebenedijt'</rhyme>.</l>
      </lg>
    </lg>
  </text>
