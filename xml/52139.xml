<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>52139</id>
    <date>
      <year-start>1798</year-start>
      <year-end>1798</year-end>
    </date>
    <tags>
      <tag standard-name="soldatenlied" translation="soldier's song">soldatenlied</tag>
    </tags>
    <melody/>
    <categories>
      <category translation="work">werk</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Als ik ben <rhyme label="a" type="m">gedezerteerd</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Tot Mechelen ben ik <rhyme label="b" type="f">gekoomen</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">De Fransche hebben mijn <rhyme label="a" type="m" corresp="#s1:l1">geattrapeerd</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ik dagt daar zou 'er wat van <rhyme label="b" type="f" corresp="#s1:l2">komen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Zij vraagden mij al naar mijn <rhyme label="a" type="m">Pas</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En dat zo met <rhyme label="b" type="f">eenen</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Ik zei 'er Citoijen ik kan u niet <rhyme label="a" type="m" corresp="#s2:l1">verstaan</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Zij bonden mij aan arm en <rhyme label="b" type="f" corresp="#s2:l2">benen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zij bragten mijn bij de <rhyme label="a" type="m">Commandant</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Hij zei 'er nu zal ik u wel <rhyme label="b" type="f">krijgen</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Naar de waterpoort zo moest ik <rhyme label="a" type="m" corresp="#s3:l1">gaan</rhyme></l>
        <l id="s3:l4" met="4" type="-+">En nog moest stilletjes <rhyme label="b" type="f" corresp="#s3:l2">zwijgen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Zes-en-twintig maande heb ik <rhyme label="a" type="m">verwagt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Al op de waaterpoort <rhyme label="b" type="f">gezeeten</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Toe moest ik voor mijn pijn en <rhyme label="a" type="m" corresp="#s4:l1">smert</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Den Tribunaal <rhyme label="b" type="f" corresp="#s4:l2">passeeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">En als ik kwam op het <rhyme label="a" type="m">Tribunaal</rhyme></l>
        <l id="s5:l2" met="4" type="-+">wat wierd 'er mijn daar <rhyme label="b" type="f">voorgeleezen</rhyme></l>
        <l id="s5:l3" met="5" type="-+">Agt jaaren in de ijzers tegen wil of tegen <rhyme label="a" type="m" corresp="#s5:l1">dank</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Mijn dogt dat kander niet <rhyme label="b" type="f" corresp="#s5:l2">passeeren</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Mij Divansuer sprak heel <rhyme label="a" type="m">geland</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat en zalder voorwaar niet <rhyme label="b" type="f">weezen</rhyme></l>
        <l id="s6:l3" met="5" type="-+">Agt Jaren in de ijzers dat is veel te <rhyme label="a" type="m" corresp="#s6:l1">lang</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Daar over zullen wij <rhyme label="b" type="f" corresp="#s6:l2">appeleeren</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ee toen kreeg nog een goed <rhyme label="a" type="m">afslag</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Al van agt jaaren op drie <rhyme label="b" type="f">maande</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">Nooit had ik 'er een blijder <rhyme label="a" type="m" corresp="#s7:l1">dag</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Mij dagt dat zalder wel <rhyme label="b" type="f" corresp="#s7:l2">volijnde</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
