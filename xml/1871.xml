  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="6" type="+-">MAch dit vroegh begonnen vyer, dees <rhyme label="a" type="m">manier</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En dees schoone glans <rhyme label="b" type="f">vermeeren</rhyme>,</l>
        <l id="s1:l3" met="6" type="+-">Yeghelijcken sult ghy sien, op sijn <rhyme label="c" type="m">knien</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Na den Hemel 't aenschijn <rhyme label="b" type="f" corresp="#s1:l2">keeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="6" type="+-">Soo ghelijck de Son verschoont, hem <rhyme label="a" type="m">vertoont</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Keerend' alle <rhyme label="b" type="f">duysterheeden</rhyme>,</l>
        <l id="s2:l3" met="6" type="+-">Even sult ghy aerds gheslacht, dagh en <rhyme label="c" type="m">nacht</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Na dees klare sterren <rhyme label="b" type="f" corresp="#s2:l2">leeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="6" type="+-">Schoone goude vlechten schoon, gulden <rhyme label="a" type="m">troon</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Yeder roemt men van <rhyme label="b" type="f">Goddinnen</rhyme>,</l>
        <l id="s3:l3" met="6" type="+-">Maer men slaet eens vvacker gae, en siet <rhyme label="c" type="m">nae</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Of men schoonder kan <rhyme label="b" type="f" corresp="#s3:l2">beminnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="6" type="+-">Nieuvv verscheenen seltsaem licht, u <rhyme label="a" type="m">ghesicht</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Sal die sulcken ras <rhyme label="b" type="f">bevvijsen</rhyme>,</l>
        <l id="s4:l3" met="6" type="+-">Dat sy qualijck besint, en <rhyme label="c" type="m">verblint</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Om dat sy 't onvvaerde <rhyme label="b" type="f" corresp="#s4:l2">prijsen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="6" type="+-">Kont ghy, hout u eygen sin, stadigh <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Hoedt u schoon ghesicht 't <rhyme label="b" type="f">aenschouvven</rhyme>,</l>
        <l id="s5:l3" met="6" type="+-">'T gheene Narcis heeft gheschendt, kon in't <rhyme label="c" type="m">endt</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Eenichsins u borst <rhyme label="b" type="f" corresp="#s5:l2">benouvven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="6" type="+-">Raeckten u u eyghen toorts, ghy mocht <rhyme label="a" type="m">voorts</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Al u heerlijckheyt <rhyme label="b" type="f">bederven</rhyme>,</l>
        <l id="s6:l3" met="6" type="+-">Eyghen liefd', vveldunckeyt, die <rhyme label="c" type="m">verleyt</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En doet ongheluckigh <rhyme label="b" type="f" corresp="#s6:l2">sterven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
