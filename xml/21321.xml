    <melody>Ik heb de wereld zeer bemind</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe Propheet is ons verhalich <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Door hem hebben wy verstant <rhyme label="b" type="f">gecregen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Hy seyt, willen wy salich <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Totten boosen maect gheen <rhyme label="b" type="f" corresp="#s1:l2">weghen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Noch byden spotters zijt niet <rhyme label="b" type="f" corresp="#s1:l2">gheleghen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Onseker is haerlieder wet <rhyme label="c" type="m">beraest</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Die daer toeuerlaet op waent <rhyme label="b" type="f" corresp="#s1:l2">beteghen</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Uoorwaer hy is <rhyme label="c" type="m" corresp="#s1:l6">verdwaest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al op die wet des Heeren <rhyme label="a" type="m">acht</rhyme></l>
        <l id="s2:l2" met="4" type="-+">So sal v salicheyt <rhyme label="b" type="f">multiplieren</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Sijt daer met becommert dach ende <rhyme label="a" type="m" corresp="#s2:l1">nacht</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Ghy ghelijct den boom aenden <rhyme label="b" type="f" corresp="#s2:l2">riuieren</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Die vruchten brengt <rhyme label="b" type="f" corresp="#s2:l2">menighertieren</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Een bladt en sal daer niet <rhyme label="c" type="m">vergaen</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Als dander verbrant zijn metten <rhyme label="b" type="f" corresp="#s2:l2">vieren</rhyme></l>
        <l id="s2:l8" met="4" type="-+">In vruechden suldy dan ghebloeyt <rhyme label="c" type="m" corresp="#s2:l6">staen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die sonder wet leeft <rhyme label="a" type="m">onbedraeyt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">God sal hem van zijn rijcke <rhyme label="b" type="f">schuren</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Licht als den wint tsant op <rhyme label="a" type="m" corresp="#s3:l1">waeyt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Den Godloosen hem sal <rhyme label="b" type="f" corresp="#s3:l2">gheburen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Sy sullen vergaen in corter <rhyme label="b" type="f" corresp="#s3:l2">vren</rhyme></l>
        <l id="s3:l6" met="4" type="-+">De ouertreders werden dan <rhyme label="c" type="m">gheschent</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Byden goeden connen sy niet <rhyme label="b" type="f" corresp="#s3:l2">gheduren</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Want sy en hebben God niet <rhyme label="c" type="m" corresp="#s3:l6">ghekent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Israel weest nv <rhyme label="a" type="m">verblijt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Ghy hebt eenen ghenadighen <rhyme label="b" type="f">Heere</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Slaet v handen tsamen maect <rhyme label="a" type="m" corresp="#s4:l1">iolijt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Tot Iacobs God een elck <rhyme label="b" type="f" corresp="#s4:l2">keere</rhyme></l>
        <l id="s4:l5" met="4" type="-+">En singt hem lof sonder <rhyme label="b" type="f" corresp="#s4:l2">cessere</rhyme></l>
        <l id="s4:l6" met="4" type="-+">En na zijn wet wtuercoren <rhyme label="c" type="m">leeft</rhyme></l>
        <l id="s4:l7" met="4" type="-+">So en sal v God laten <rhyme label="b" type="f" corresp="#s4:l2">nemmermeere</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Inder eewicheyt hy dat ghesworen <rhyme label="c" type="m" corresp="#s4:l6">heeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och Israel dits mijn <rhyme label="a" type="m">ghebot</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Gheuet ghehoor, elck dat <rhyme label="b" type="f">onthouwe</rhyme></l>
        <l id="s5:l3" met="4" type="-+">En achtet op gheen vreemde <rhyme label="a" type="m" corresp="#s5:l1">God</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Noch en maeckt gheen beelden van siluer oft van <rhyme label="b" type="f" corresp="#s5:l2">gouwe</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Aenbidtse niet, noch ick v <rhyme label="b" type="f" corresp="#s5:l2">ontuouwe</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Wat dat Ieremias <rhyme label="c" type="m">leert</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Als ick mijn volck castijden <rhyme label="b" type="f" corresp="#s5:l2">souwe</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Totten Afgoden zijn sy <rhyme label="c" type="m" corresp="#s5:l6">ghekeert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die waerheyt wilt voor eenen Prince <rhyme label="a" type="m">ontfaen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Schriftuerlick can sy dit Liet <rhyme label="b" type="f">betoghen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Den Sone is van zijnen Uader <rhyme label="a" type="m" corresp="#s6:l1">ghegaen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Maer dese Afgoden hebben ons <rhyme label="b" type="f" corresp="#s6:l2">bedroghen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Sy en sien noch en hooren al hebben sy <rhyme label="b" type="f" corresp="#s6:l2">ooghen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Leest Danielem arm ende <rhyme label="c" type="m">rijck</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Die dese beelden maken ende te aenbidden <rhyme label="b" type="f" corresp="#s6:l2">pooghen</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Sy sullen te samen vergaen <rhyme label="c" type="m" corresp="#s6:l6">ghelijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
