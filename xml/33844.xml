  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAght u van valsch <rhyme label="a" type="f">Propheten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die koomen in <rhyme label="b" type="m">Schaeps-vel</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Sy sijn graegh om te <rhyme label="a" type="f" corresp="#s1:l1">vreeten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van binnen <rhyme label="b" type="m" corresp="#s1:l2">Wolven-vel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De vrucht die van haer <rhyme label="a" type="f">koome</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van haer het teyken <rhyme label="b" type="m">geeft</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">'t En is geen goede <rhyme label="a" type="f" corresp="#s2:l1">boome</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die quade vruchten <rhyme label="b" type="m" corresp="#s2:l2">heeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een boom magh niet quaet <rhyme label="a" type="f">weesen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die voortbrenght goede <rhyme label="b" type="m">vrueght</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hier van wordt hy <rhyme label="a" type="f" corresp="#s3:l1">gepreesen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Want hy soo toont sijn <rhyme label="b" type="m" corresp="#s3:l2">deught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Men sal ook niet <rhyme label="a" type="f">versamen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van Doornen Vijgen <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Nogh ook van wilde <rhyme label="a" type="f" corresp="#s4:l1">bramen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Men Druyven snijden <rhyme label="b" type="m" corresp="#s4:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo alle goede <rhyme label="a" type="f">boome</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ook goede vruchten <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Soo aen de quade <rhyme label="a" type="f" corresp="#s5:l1">koome</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ook quade vruchten <rhyme label="b" type="m" corresp="#s5:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ten beurt te geene <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat eenen goeden <rhyme label="b" type="m">boom</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Sou quade vruchten <rhyme label="a" type="f" corresp="#s6:l1">dragen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Of goed', een quaden <rhyme label="b" type="m" corresp="#s6:l2">boom</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Men sal den boom <rhyme label="a" type="f">af-hacken</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Daer men geen vrucht van <rhyme label="b" type="m">waght</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En in het viere <rhyme label="a" type="f" corresp="#s7:l1">smacken</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dus naer de vrucht haer <rhyme label="b" type="m" corresp="#s7:l2">aght</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Een goed' mensch sal van <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Uyt 't hart voort-brengen <rhyme label="b" type="m">goet</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Een mensche quaet van <rhyme label="a" type="f" corresp="#s8:l1">sinnen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ook quaet voort-brengen <rhyme label="b" type="m" corresp="#s8:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Als 't hart is in de <rhyme label="a" type="f">gronde</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Na sijne <rhyme label="b" type="m">volligheydt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Soo spreekt ook meed' den <rhyme label="a" type="f" corresp="#s9:l1">monde</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En toont wat daer in <rhyme label="b" type="m" corresp="#s9:l2">leydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
