    <melody>Zeg mij wel schoonste nimfje</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SOmmige quamen op een <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Aen onsen Heer <rhyme label="b" type="f">vertellen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hoe Pilatus met grooter <rhyme label="a" type="m" corresp="#s1:l1">spijt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Nam Galilee te <rhyme label="b" type="f" corresp="#s1:l2">quellen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy hadt vermenght der menschen <rhyme label="a" type="m">bloedt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Tot grouwelijke <rhyme label="b" type="f">schande</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Door sijn seer tyrannige <rhyme label="a" type="m" corresp="#s2:l1">moedt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met hare <rhyme label="b" type="f" corresp="#s2:l2">offer-hande</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Jesus haer vraeght, hoe of gy <rhyme label="a" type="m">dengkt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Of dese mannen <rhyme label="b" type="f">waren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">(Die Godt heeft dit lijden <rhyme label="a" type="m" corresp="#s3:l1">gehenght</rhyme>)</l>
        <l id="s3:l4" met="3" type="-+">Als ander meer <rhyme label="b" type="f" corresp="#s3:l2">sondaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Neen, segh ik u: maer soo gy <rhyme label="a" type="m">boet'</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In tijts niet wilt <rhyme label="b" type="f">aenvangen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ende penitentie <rhyme label="a" type="m" corresp="#s4:l1">doet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Sult al gelijk <rhyme label="b" type="f" corresp="#s4:l2">vergangen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo is het ook met die <rhyme label="a" type="m">achtien</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Op welke <rhyme label="b" type="f">nedervallen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Siloes tooren is korts <rhyme label="a" type="m" corresp="#s5:l1">gesien</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En dooden die ook <rhyme label="b" type="f" corresp="#s5:l2">allen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Meynt gy dat dees hebben <rhyme label="a" type="m">gedaen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Meer sond' als ander <rhyme label="b" type="f">lieden</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">Neen, segh ik, gy sult al <rhyme label="a" type="m" corresp="#s6:l1">vergaen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Indien gy boet' wilt <rhyme label="b" type="f" corresp="#s6:l2">vlieden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Een in sijn Wijngaert hadt <rhyme label="a" type="m">geplant</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Een Vijgeboom, en <rhyme label="b" type="f">sochte</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Vruchten daer an, maer hy niet <rhyme label="a" type="m" corresp="#s7:l1">vant</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Waer over dat hy <rhyme label="b" type="f" corresp="#s7:l2">dochte</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ende seydt, het is nu drie <rhyme label="a" type="m">jaer</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Dat ik geen vrucht <rhyme label="b" type="f">verwerve</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Daerom Tuyn-man doet hem van <rhyme label="a" type="m" corresp="#s8:l1">daer</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hy is niet waert dees <rhyme label="b" type="f" corresp="#s8:l2">erve</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Den Hovenier die seyde, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Laet ons nogh een jaer <rhyme label="b" type="f">wagen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Ik hem dan sal mesten nogh <rhyme label="a" type="m" corresp="#s9:l1">meer</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Of hy nogh vrught moght <rhyme label="b" type="f" corresp="#s9:l2">dragen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Soo hy dan geene vrughte <rhyme label="a" type="m">brenght</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Dan sal men hem <rhyme label="b" type="f">uyt-snijden</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">Heer, gy onsen tijdt wel <rhyme label="a" type="m" corresp="#s10:l1">verlenght</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Doet ons togh vrught <rhyme label="b" type="f" corresp="#s10:l2">bedijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
