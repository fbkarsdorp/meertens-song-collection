  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Leander, quam lest, Cloris <rhyme label="a" type="f">vraeghen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hoe sy hem soo luttel <rhyme label="b" type="m">acht</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Daer hy nu soo langhe <rhyme label="a" type="f" corresp="#s1:l1">daeghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Heeft naer haere min <rhyme label="b" type="m" corresp="#s1:l2">ghetracht</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">'tWelck hy beklaeght, klaeght, <rhyme label="c" type="m">klaeght</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Met groot <rhyme label="d" type="f">bedroeven</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Dat sy, hem, niet aen en <rhyme label="c" type="m" corresp="#s1:l5">draeght</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">'tWelck hy <rhyme label="c" type="m" corresp="#s1:l5">beklaeght</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Cloris die blyft even <rhyme label="a" type="f">stuere</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Ende lacht, met syn <rhyme label="b" type="m">ghevly</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Sy siet stadigh trots, en <rhyme label="a" type="f" corresp="#s2:l1">suere</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">En keert t'hooft naer d'ander <rhyme label="b" type="m" corresp="#s2:l2">sey</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ghemerckt sy geckt, geckt, <rhyme label="c" type="m">geckt</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Met al syn <rhyme label="d" type="f">suchten</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">'tWelck hem 'thooft, en 'therte <rhyme label="c" type="m" corresp="#s2:l5">breckt</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Ghemerckt sy <rhyme label="c" type="m" corresp="#s2:l5">geckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hy sweirt, dat het Mopsus schult <rhyme label="a" type="f">is</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat haer gunst, hem wort <rhyme label="b" type="m">ont-seyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat sy, door syn min verdult <rhyme label="a" type="f" corresp="#s3:l1">is</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat hy, hem, haer heeft <rhyme label="b" type="m" corresp="#s3:l2">ontvreyt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dat maeckt hem gram, gram, <rhyme label="c" type="m">gram</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Dat wilt hy <rhyme label="d" type="f">wreken</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Dat hy, hem, syn lief, <rhyme label="c" type="m" corresp="#s3:l5">ontnam</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Dat maeckt hem <rhyme label="c" type="m" corresp="#s3:l5">gram</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Stelt Leander u te <rhyme label="a" type="f">vreden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Sprack hem cloris daer op <rhyme label="b" type="m">toe</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">'kWil aen Mopsus my <rhyme label="a" type="f" corresp="#s4:l1">besteden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Want u vryen, ben ick <rhyme label="b" type="m" corresp="#s4:l2">moe</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Stelt u gherust, rust, <rhyme label="c" type="m">rust</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">'tIs mynen <rhyme label="d" type="f">sinne</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Een te trouwen, naer my <rhyme label="c" type="m" corresp="#s4:l5">lust</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Stelt u <rhyme label="c" type="m" corresp="#s4:l5">gherust</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Vrint Leander wilt <rhyme label="a" type="f">onthouwen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Als ghy kiest een <rhyme label="b" type="m">Herderin</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Noyt, u liefde vast te <rhyme label="a" type="f" corresp="#s5:l1">bouwen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Voor ghy kent, u liefkens <rhyme label="b" type="m" corresp="#s5:l2">sin</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Want, sin is koop, koop, <rhyme label="c" type="m">koop</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Dus kiest <rhyme label="d" type="f">Leander</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Eenigh ander, van den <rhyme label="c" type="m" corresp="#s5:l5">hoop</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Want sin is <rhyme label="c" type="m" corresp="#s5:l5">koop</rhyme>.</l>
      </lg>
    </lg>
