  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Sterven, edel <rhyme label="a" type="f">sterven</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Wat goet doet ghy <rhyme label="a" type="f" corresp="#s1:l1">verwerven</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Een ziele, die u <rhyme label="b" type="m">vint</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Wat vreughden doet ghy <rhyme label="c" type="f">smaecken</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die vreughden al <rhyme label="c" type="f" corresp="#s1:l4">versaecken</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Om een vreught, die-men <rhyme label="b" type="m" corresp="#s1:l3">mint</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die 't proeft, die kan 't <rhyme label="a" type="f">gheweten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wat vreught dat wort <rhyme label="a" type="f" corresp="#s2:l1">beseten</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In een hert alles <rhyme label="b" type="m">bloot</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Wat vreughde is <rhyme label="c" type="f">gheleghen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En alleen wort <rhyme label="c" type="f" corresp="#s2:l4">verkreghen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In een volkomen <rhyme label="b" type="m" corresp="#s2:l3">doot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe luttel door de <rhyme label="a" type="f">straeten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van lijden en van <rhyme label="a" type="f" corresp="#s3:l1">laeten</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Vervolghen dat <rhyme label="b" type="m">begin</rhyme>!</l>
        <l id="s3:l4" met="3" type="-+">Daer 't hert sonder <rhyme label="c" type="f">aen-cleven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Houdt 't sterven voor het <rhyme label="c" type="f" corresp="#s3:l4">leven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">'T verliesen voor <rhyme label="b" type="m" corresp="#s3:l3">ghewin</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O ziele hoogh <rhyme label="a" type="f">gheschaepen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Leert u ghenuchten <rhyme label="a" type="f" corresp="#s4:l1">raepen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">In uwen Schepper <rhyme label="b" type="m">soet</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Keert u van uw' <rhyme label="c" type="f">natuere</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">'T en is gheen <rhyme label="c" type="f" corresp="#s4:l4">creatuere</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die uwen wensch <rhyme label="b" type="m" corresp="#s4:l3">voldoet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Al vallet swaer en <rhyme label="a" type="f">lastich</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Houdt u, o ziel, <rhyme label="a" type="f" corresp="#s5:l1">standtvastich</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Gaet door allen <rhyme label="b" type="m">opval</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Leert uw' natuer <rhyme label="c" type="f">verwinnen</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Sterft, en versterft u <rhyme label="c" type="f" corresp="#s5:l4">sinnen</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Breeckt, en door-breket <rhyme label="b" type="m" corresp="#s5:l3">al</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Godts lierfde sal u <rhyme label="a" type="f">leeren</rhyme>:</l>
        <l id="s6:l2" met="3" type="-+">Wilt u maer binnen <rhyme label="a" type="f" corresp="#s6:l1">keeren</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Wilt haer slechts <rhyme label="b" type="m">hooren-aen</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Sy sal door haere <rhyme label="c" type="f">wetten</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Vlichtlijck <rhyme label="c" type="f" corresp="#s6:l4">oversetten</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Wilt slechts haer stem <rhyme label="b" type="m" corresp="#s6:l3">verstaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">V voordeel op der <rhyme label="a" type="f">eerden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En is van gheender <rhyme label="a" type="f" corresp="#s7:l1">weerden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dan rechts te zijn <rhyme label="b" type="m">veracht</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Dat deel moet u <rhyme label="c" type="f">ghenoeghen</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Daer nae moet ghy u <rhyme label="c" type="f" corresp="#s7:l4">voeghen</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Dat ghy't soeckt en <rhyme label="b" type="m" corresp="#s7:l3">verwacht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wist ghy wat is <rhyme label="a" type="f">gheleghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">(Al gaet het u wat <rhyme label="a" type="f" corresp="#s8:l1">teghen</rhyme>)</l>
        <l id="s8:l3" met="3" type="-+">In den druck, die ghy <rhyme label="b" type="m">lijdt</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Met smaeckende <rhyme label="c" type="f">verlanghen</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Soudt ghy het cruys <rhyme label="c" type="f" corresp="#s8:l4">ontfanghen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En stane in druck <rhyme label="b" type="m" corresp="#s8:l3">verblijdt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Daerom wilt u <rhyme label="a" type="f">vercloecken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">O ziel, dat cruys te <rhyme label="a" type="f" corresp="#s9:l1">soecken</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Door leven ende <rhyme label="b" type="m">doot</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Troost moet gh'uyt herte <rhyme label="c" type="f">sluyten</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">V selven gaen te <rhyme label="c" type="f" corresp="#s9:l4">buyten</rhyme>:</l>
        <l id="s9:l6" met="3" type="-+">En staen in alles <rhyme label="b" type="m" corresp="#s9:l3">bloot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Tot suchten en tot <rhyme label="a" type="f">traenen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Moet u voortaen <rhyme label="a" type="f" corresp="#s10:l1">vermaenen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Die wonderlijcke <rhyme label="b" type="m">rust</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">En daer ghy zijt <rhyme label="c" type="f">onschuldich</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Om liefde soet <rhyme label="c" type="f" corresp="#s10:l4">verduldich</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Te staen nae 't cruys <rhyme label="b" type="m" corresp="#s10:l3">verlust</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Leert, ziele, dit <rhyme label="a" type="f">begeeren</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Laet liefde u <rhyme label="a" type="f" corresp="#s11:l1">verteeren</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dat die natuer <rhyme label="b" type="m">verdwijn</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Pooght u 't cruys te <rhyme label="c" type="f">verkiesen</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Want ghy moet troost <rhyme label="c" type="f" corresp="#s11:l4">verliesen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Om eens ghetroost te <rhyme label="b" type="m" corresp="#s11:l3">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
