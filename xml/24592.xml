<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24592</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="devoot lied" translation="devotional song">devoot lied</tag>
    </tags>
    <melody>Doen de roos van Jericho</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Ic hebben die werlt soe lange <rhyme label="a" type="m">gedient</rhyme></l>
        <l id="s1:l2" met="5" type="-+">dat rouwet my also <rhyme label="b" type="f">seere</rhyme></l>
        <l id="s1:l3" met="5" type="-+">die cierheit wil ic laten <rhyme label="a" type="m" corresp="#s1:l1">of</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ende kieren my tot onsen lieuen <rhyme label="b" type="f" corresp="#s1:l2">heren</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s1:l5">daen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s1:l6">eren</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Syn ontfermherticheit die is soe <rhyme label="a" type="m">groet</rhyme></l>
        <l id="s2:l2" met="5" type="-+">Ic haepe hy en sal my nyet <rhyme label="b" type="f">versmaeden</rhyme></l>
        <l id="s2:l3" met="5" type="-+">Tot synre schoelen wil ic <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">ende bidden hem omme <rhyme label="b" type="f" corresp="#s2:l2">genaden</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s2:l5">daen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s2:l6">eren</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Doe ic in die schoele <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s3:l2" met="5" type="-+">die schoele der godliker <rhyme label="b" type="f">mynnen</rhyme></l>
        <l id="s3:l3" met="5" type="-+">die lexsen die waeren my <rhyme label="a" type="m" corresp="#s3:l1">onbecant</rhyme></l>
        <l id="s3:l4" met="3" type="-+">dat deden myne werlike <rhyme label="b" type="f" corresp="#s3:l2">synen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s3:l5">daen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s3:l6">eren</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Die eerste lexsen dien ic daer <rhyme label="a" type="m">vant</rhyme></l>
        <l id="s4:l2" met="5" type="-+">Dat was ic solde steruen <rhyme label="b" type="f">leeren</rhyme></l>
        <l id="s4:l3" met="5" type="-+">Ende laeten die creiatueren <rhyme label="a" type="m" corresp="#s4:l1">of</rhyme></l>
        <l id="s4:l4" met="3" type="-+">ende kieren my tot onsen lieuen <rhyme label="b" type="f" corresp="#s4:l2">heren</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s4:l5">daen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s4:l6">eren</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Sie toegen my alle myne cleeder <rhyme label="a" type="m">wt</rhyme></l>
        <l id="s5:l2" met="5" type="-+">sie deden my myn haer of <rhyme label="b" type="f">snyden</rhyme></l>
        <l id="s5:l3" met="5" type="-+">Sye toegen my an ene mantele die was <rhyme label="a" type="m" corresp="#s5:l1">grau</rhyme></l>
        <l id="s5:l4" met="3" type="-+">sie leerden my die oerden <rhyme label="b" type="f" corresp="#s5:l2">getyden</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s5:l5">daen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s5:l6">eren</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Hoe my doe toe moede <rhyme label="a" type="m">was</rhyme></l>
        <l id="s6:l2" met="5" type="-+">dat een sal ic nyemant <rhyme label="b" type="f">claegen</rhyme></l>
        <l id="s6:l3" met="5" type="-+">Dan ihesus die inden hoege hemel <rhyme label="a" type="m" corresp="#s6:l1">wont</rhyme></l>
        <l id="s6:l4" met="3" type="-+">die salt my helpen <rhyme label="b" type="f" corresp="#s6:l2">dragen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s6:l5">daen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s6:l6">eren</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Dien dage die worden my alsoe <rhyme label="a" type="m">lanck</rhyme></l>
        <l id="s7:l2" met="5" type="-+">des nachtes en konde ic nyet <rhyme label="b" type="f">geslaepen</rhyme></l>
        <l id="s7:l3" met="5" type="-+">Ic dachte soe dicke in mynen doemen <rhyme label="a" type="m" corresp="#s7:l1">syne</rhyme></l>
        <l id="s7:l4" met="3" type="-+">hoe icket solde <rhyme label="b" type="f" corresp="#s7:l2">gemaeken</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s7:l5">daen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s7:l6">eren</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Als ic auerdachte in mynen <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s8:l2" met="5" type="-+">dat ic die werlt hadde <rhyme label="b" type="f">gelaten</rhyme></l>
        <l id="s8:l3" met="5" type="-+">Soe  verblyde ic my van herten <rhyme label="a" type="m" corresp="#s8:l1">alsoe</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Ic verwroude my bauen <rhyme label="b" type="f" corresp="#s8:l2">maete</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s8:l5">daen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s8:l6">eren</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="-+">Sueter wyn en dranc ic <rhyme label="a" type="m">nyet</rhyme></l>
        <l id="s9:l2" met="5" type="-+">wt nappen noch wt <rhyme label="b" type="f">glaesen</rhyme></l>
        <l id="s9:l3" met="5" type="-+">Als wt ihesus ouer roeter <rhyme label="a" type="m" corresp="#s9:l1">mont</rhyme></l>
        <l id="s9:l4" met="3" type="-+">daer mach men vroude wt <rhyme label="b" type="f" corresp="#s9:l2">haelen</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s9:l5">daen</rhyme></l>
        <l id="s9:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s9:l6">eren</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="5" type="-+">Hadden hadden   bedriechlicke <rhyme label="a" type="m">werlt</rhyme></l>
        <l id="s10:l2" met="5" type="-+">Ende ic moet nv van v <rhyme label="b" type="f">scheyden</rhyme></l>
        <l id="s10:l3" met="5" type="-+">soe mach ic altoes blyde <rhyme label="a" type="m" corresp="#s10:l1">syn</rhyme></l>
        <l id="s10:l4" met="3" type="-+">na deser corter <rhyme label="b" type="f" corresp="#s10:l2">ellende</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s10:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s10:l5">daen</rhyme></l>
        <l id="s10:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s10:l6">eren</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="5" type="-+">Belges v nyet vri edel <rhyme label="a" type="m">conyncgyne</rhyme></l>
        <l id="s11:l2" met="5" type="-+">dat ic v  soe luttel <rhyme label="b" type="f">mynne</rhyme></l>
        <l id="s11:l3" met="5" type="-+">ic drage v op myn lyf ende oec myn <rhyme label="a" type="m" corresp="#s11:l1">ziele</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Ende daer toe myne vyf <rhyme label="b" type="f" corresp="#s11:l2">syn</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Myn haepe ende myn troest ende alle myn <rhyme label="c" type="m">toeuoerlaet</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Dat steet an god myne <rhyme label="d" type="f">heren</rhyme></l>
        <l id="s11:l7" met="4" type="-+">Hoe geerne wolde ic hem wesen onder <rhyme label="c" type="m" corresp="#s11:l5">daen</rhyme></l>
        <l id="s11:l8" met="3" type="-+">tot synre ewyger <rhyme label="d" type="f" corresp="#s11:l6">eren</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
