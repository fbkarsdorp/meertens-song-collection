  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Comt al tot <rhyme label="a" type="m">my</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In dees genaden <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Komt alle <rhyme label="a" type="m" corresp="#s1:l1">ghy</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die daer beladen <rhyme label="b" type="m" corresp="#s1:l2">zijt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Benaut van Geest en vol <rhyme label="c" type="f">verschrikken</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Komt herwaert ick sal u <rhyme label="c" type="f" corresp="#s1:l5">verquikken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ick ben <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">De wegh ter <rhyme label="b" type="m">Saligheyt</rhyme>:</l>
        <l id="s2:l3" met="2" type="-+">Ick ben die <rhyme label="a" type="m" corresp="#s2:l1">geen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die tot den Hemel <rhyme label="b" type="m" corresp="#s2:l2">leyt</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Al die mijn Iock volstandigh <rhyme label="c" type="f">dragen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En wercken doen na mijn <rhyme label="c" type="f" corresp="#s2:l5">behagen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Ick ben het <rhyme label="a" type="m">Lam</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat slechts tot u <rhyme label="b" type="m">vermaeck</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Op aerden <rhyme label="a" type="m" corresp="#s3:l1">quam</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Om u bedroefde <rhyme label="b" type="m" corresp="#s3:l2">saeck</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Te slechten, op dat ghy na <rhyme label="c" type="f">desen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Voor eeuwigh soudt behouden <rhyme label="c" type="f" corresp="#s3:l5">wesen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ick ben een <rhyme label="a" type="m">stut</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat ware Hemels <rhyme label="b" type="m">Broodt</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Wie daer van <rhyme label="a" type="m" corresp="#s4:l1">nut</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Komt nimmer in de <rhyme label="b" type="m" corresp="#s4:l2">Doot</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Een vaste troost voor bangge <rhyme label="c" type="f">Zielen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Die oyt of oyt in swackheyt <rhyme label="c" type="f" corresp="#s4:l5">vielen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Wie my <rhyme label="a" type="m">belijdt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En lief heeft boven <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Die wordt <rhyme label="a" type="m" corresp="#s5:l1">bevrijdt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van eeuwigh <rhyme label="b" type="m" corresp="#s5:l2">ongeval</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dat eenmael sal te voorschijn <rhyme label="c" type="f">komen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Tot sondaers schrick en vreuchdâ€™ der <rhyme label="c" type="f" corresp="#s5:l5">Vromen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Ghy geeft ons <rhyme label="a" type="m">stof</rhyme></l>
        <l id="s6:l2" met="3" type="-+">O groote <rhyme label="b" type="m">Middelaer</rhyme>!</l>
        <l id="s6:l3" met="2" type="-+">Om uwe <rhyme label="a" type="m" corresp="#s6:l1">lof</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Steeds uyt te roepen: <rhyme label="b" type="m" corresp="#s6:l2">maer</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Wie kan naar eysch u liefde <rhyme label="c" type="f">prijsen</rhyme>?</l>
        <l id="s6:l6" met="4" type="-+">En lof en eer genoegh <rhyme label="c" type="f" corresp="#s6:l5">bewijsen</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Maeck ons <rhyme label="a" type="m">bequaem</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dat wy met <rhyme label="b" type="m">lof-gesangh</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">U soete <rhyme label="a" type="m" corresp="#s7:l1">Naem</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Ons gantsche leven <rhyme label="b" type="m" corresp="#s7:l2">langh</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En namaels uyt het stof <rhyme label="c" type="f">getogen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">In eeuwigheyt lof-singen <rhyme label="c" type="f" corresp="#s7:l5">mogen</rhyme>.</l>
      </lg>
    </lg>
  </text>
