<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11791</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>O Venus der minne godin</melody>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">TObias siend' op Godes <rhyme label="a" type="f">zegen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Begost sijn dood nu <rhyme label="a" type="f" corresp="#s1:l1">t'overwegen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Dies hy, gantsch <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Om sulcks te toonen, riep sijnen <rhyme label="c" type="f">soone</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn Kind, seyd hy, wanneer ick <rhyme label="a" type="f">sterve</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Soo laet mijn lichaem 't aerdrijck <rhyme label="a" type="f" corresp="#s2:l1">erven</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">In noot, hoe <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Wilt met verneeren, u Moeder <rhyme label="c" type="f">eeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Bedroeftse noyt in uwe <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Want sy heeft smert om u <rhyme label="a" type="f" corresp="#s3:l1">gedragen</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">En doet, haer <rhyme label="b" type="m">goed</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Wilt haer beminnen, met hert en <rhyme label="c" type="f">sinnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wanneerse is van hier <rhyme label="a" type="f">gescheyden</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Wilt neffens my haer graf <rhyme label="a" type="f" corresp="#s4:l1">bereyden</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">En hout, <rhyme label="b" type="m">vertrouwt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">In vreughd of nooden, al Gods <rhyme label="c" type="f">geboden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wacht u voor sonden en <rhyme label="a" type="f">gebreecken</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En wandelt recht, mijt snoode <rhyme label="a" type="f" corresp="#s5:l1">treecken</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Dan sal 't, hoe 't <rhyme label="b" type="m">valt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Sich altijdt voegen, nae u <rhyme label="c" type="f">genoegen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wilt altijdt milde aelmoes <rhyme label="a" type="f">plegen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Is 't weynigh, 't is aen 't hert <rhyme label="a" type="f" corresp="#s6:l1">gelegen</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Is 't veel, 't is <rhyme label="b" type="m">eel</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En hebt met armen, altijdt <rhyme label="c" type="f">ontfarmen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wacht u van hoerery, wilt <rhyme label="a" type="f">trouwen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En neemt uyt uwe' stam een <rhyme label="a" type="f" corresp="#s7:l1">Vrouwe</rhyme>.</l>
        <l id="s7:l3" met="2" type="-+">Mijn Kind, <rhyme label="b" type="m">bemint</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">De stem' uws Moeders, en eert u <rhyme label="c" type="f">broeders</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Weest prachtigh stout, noch <rhyme label="a" type="f">op-geblasen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Want hoovaerdye past den <rhyme label="a" type="f" corresp="#s8:l1">dwasen</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Wilt Soon, het <rhyme label="b" type="m">loon</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die voor u wachten, niet doen <rhyme label="c" type="f">vernachten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Let op u self en al u <rhyme label="a" type="f">wercken</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En wilt op uwen omgangh <rhyme label="a" type="f" corresp="#s9:l1">mercken</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Veracht, 't <rhyme label="b" type="m">geslacht</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Der over-stouten, en <rhyme label="c" type="f">droncken-bouten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wilt brood den hongrigen <rhyme label="a" type="f">verstrecken</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En naeckten met u kleeders <rhyme label="a" type="f" corresp="#s10:l1">decken</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">'t Bedroogh, noyt <rhyme label="b" type="m">oogh</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Die aelmoes pleeghde, en 't hert <rhyme label="c" type="f">beweeghde</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Looft God en bid dat al u <rhyme label="a" type="f">wegen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Steets tot den goede zijn <rhyme label="a" type="f" corresp="#s11:l1">genegen</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Goe raed, <rhyme label="b" type="m">bestaet</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Dus wilt mijn reden, in 't herte <rhyme label="c" type="f">smeden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
