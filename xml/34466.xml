  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">SChoonste <rhyme label="a" type="f">Herderinne</rhyme>!</l>
        <l id="s1:l2" met="3" type="+-">Die ick meer <rhyme label="a" type="f" corresp="#s1:l1">beminne</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Dan mijn eyghen <rhyme label="b" type="m">hert</rhyme>’:</l>
        <l id="s1:l4" met="3" type="+-">Hoe kont ghy <rhyme label="c" type="f">verdraghen</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Dat ick soo veel <rhyme label="c" type="f" corresp="#s1:l4">daghen</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Dat ick soo veel <rhyme label="c" type="f" corresp="#s1:l4">daghen</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Leef in druck en <rhyme label="b" type="m" corresp="#s1:l3">smert</rhyme>’?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Wilt my <rhyme label="a" type="f">weder-minnen</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Met dijn’ hert’ en <rhyme label="a" type="f" corresp="#s2:l1">sinnen</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Soete <rhyme label="b" type="m">Galathé</rhyme>:</l>
        <l id="s2:l4" met="3" type="+-">Maeckt my (als uw’ <rhyme label="c" type="f">Schapen</rhyme></l>
        <l id="s2:l5" met="3" type="+-">Gaen hun voedtsel <rhyme label="c" type="f" corresp="#s2:l4">rapen</rhyme>)</l>
        <l id="s2:l6" met="3" type="+-">Gaen hun voedtsel <rhyme label="c" type="f" corresp="#s2:l4">rapen</rhyme>)</l>
        <l id="s2:l7" met="3" type="+-">Hoeder van uw’ <rhyme label="b" type="m" corresp="#s2:l3">vee</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">‘k Sal uw’ Lammers <rhyme label="a" type="f">hoeden</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">En uw’ Schaepjens <rhyme label="a" type="f" corresp="#s3:l1">voeden</rhyme>:</l>
        <l id="s3:l3" met="3" type="+-">‘k Sal het boos <rhyme label="b" type="m">ghewelt</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Van den Wolf en <rhyme label="c" type="f">Beiren</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Neerstelijck <rhyme label="c" type="f" corresp="#s3:l4">af-weiren</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Neerstelijck <rhyme label="c" type="f" corresp="#s3:l4">af-weiren</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Dus my Herder <rhyme label="b" type="m" corresp="#s3:l3">stelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Mijnen Hondt <rhyme label="a" type="f">Rosellis</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Oock tot dijn’ bevel <rhyme label="a" type="f" corresp="#s4:l1">is</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Hy sal dagh en <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s4:l4" met="3" type="+-">(Door ’t ghedurigh <rhyme label="c" type="f">bassen</rhyme>)</l>
        <l id="s4:l5" met="3" type="+-">Op dijn’ Schaepjens <rhyme label="c" type="f" corresp="#s4:l4">passen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Op dijn’ Schaepjens <rhyme label="c" type="f" corresp="#s4:l4">passen</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Als hy houdt de <rhyme label="b" type="m" corresp="#s4:l3">wacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Niemant sal u <rhyme label="a" type="f">hind’ren</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Noch dijn’ kudd’ <rhyme label="a" type="f" corresp="#s5:l1">vermind’ren</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Waerde <rhyme label="b" type="m">Herderin</rhyme>:</l>
        <l id="s5:l4" met="3" type="+-">Dus wilt my <rhyme label="c" type="f">verkiesen</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">(Wildy niet <rhyme label="c" type="f" corresp="#s5:l4">verliesen</rhyme>)</l>
        <l id="s5:l6" met="3" type="+-">(Wildy niet <rhyme label="c" type="f" corresp="#s5:l4">verliesen</rhyme>)</l>
        <l id="s5:l7" met="3" type="+-">Jondt my <rhyme label="b" type="m" corresp="#s5:l3">weder-min</rhyme>.</l>
      </lg>
    </lg>
  </text>
