    <tags/>
    <melody>O kerstnacht schoner dan de dagen</melody>
  <author>Arnold Bon</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">EEn <rhyme label="a" type="m">Maegt</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Sit dickmael seer <rhyme label="b" type="f">verhoolen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick leef in brant gelijck als <rhyme label="b" type="f" corresp="#s1:l2">koolen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ja dat mijn Hert in 't vlamment <rhyme label="c" type="m">vier</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Also den Salmander schijnt te <rhyme label="d" type="f">branden</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Bedroeft ghy mijn Ziel <rhyme label="d" type="f" corresp="#s1:l5">vermanden</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Ja door u huesheyt mijn <rhyme label="c" type="m" corresp="#s1:l4">regeert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Tere <rhyme label="a" type="m">Vryheyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Ick u gonsch most <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Als ick gedenkt maer 't kan niet <rhyme label="b" type="f" corresp="#s2:l2">baten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Soo dat ghy hebt mijn Ziel <rhyme label="c" type="m">ontroert</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ghy hebt mijn door u scheteren <rhyme label="d" type="f">d'Oogen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">O! Maegt mijn vryheyt <rhyme label="d" type="f" corresp="#s2:l5">ontogen</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Ghy hebt mijn vryheyt <rhyme label="c" type="m" corresp="#s2:l4">ontvoert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Lief sou <rhyme label="a" type="m">ick</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Eeren dorst ick 't <rhyme label="b" type="f">noemen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Neemt aen u Slaef die als een <rhyme label="b" type="f" corresp="#s3:l2">bloeme</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ja die staet schoon al op zijn <rhyme label="c" type="m">struyck</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Soo dat den Wint hem doet <rhyme label="d" type="f">vergangen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Leef ick gelijck een brant seer <rhyme label="d" type="f" corresp="#s3:l5">bangen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">In 't minne vier daer ick in <rhyme label="c" type="m" corresp="#s3:l4">duyck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Dees <rhyme label="a" type="m">Maecht</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Eer ick in mijn <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Neemt mijn vryheyt die geen ick <rhyme label="b" type="f" corresp="#s4:l2">achte</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">U eer boven eenich aersche <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Raeckt door dees Maecht nu gantsch ten <rhyme label="d" type="f">enden</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">U soet gesicht wil tot mijn <rhyme label="d" type="f" corresp="#s4:l5">wenden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">En u Aenbid met minnaer <rhyme label="c" type="m" corresp="#s4:l4">bloet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="+-">Kan <rhyme label="a" type="m">dan</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Hemelsche schoone <rhyme label="b" type="f">Goddinne</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Tot minne Lief u niet <rhyme label="b" type="f" corresp="#s5:l2">Verwinne</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo blijft u Dienaer altijt <rhyme label="c" type="m">trouw</rhyme></l>
        <l id="s5:l5" met="4" type="-+">O! heusche Maeght mijn <rhyme label="d" type="f">vryheden</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Heeft u dickmael <rhyme label="d" type="f" corresp="#s5:l5">aengebeden</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Tot dat mijn Ziel leeft nu in <rhyme label="c" type="m" corresp="#s5:l4">rouw</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="+-">Raeck <rhyme label="a" type="m">ick</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">U poesel soete <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En door 't gevoel mijn weer doet <rhyme label="b" type="f" corresp="#s6:l2">branden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Roert mijn Ziel weder op een <rhyme label="c" type="m">nu</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Jak brant en blaeck in 't Herte <rhyme label="d" type="f">binne</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Kan noyt mijn sinnen <rhyme label="d" type="f" corresp="#s6:l5">overwinnen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Kan noyt zijn met gedacht van <rhyme label="c" type="m" corresp="#s6:l4">u</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="+-"><rhyme label="a" type="m">Ziel-breeckster</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">En behoetster <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Laet u door mijn zijn <rhyme label="b" type="f" corresp="#s7:l2">aengebeden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dan sal daer noch verlichtingh <rhyme label="c" type="m">zijn</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">En op 't Altaer mijn min <rhyme label="d" type="f">verkoelen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Nu ick den brant laes moet <rhyme label="d" type="f" corresp="#s7:l5">gevoelen</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">En ick u Min al wout ghy <rhyme label="c" type="m" corresp="#s7:l4">niet</rhyme>.</l>
      </lg>
    </lg>
  </text>
