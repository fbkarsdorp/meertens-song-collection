<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>173906</id>
    <date>
      <year-start>1789</year-start>
      <year-end>1789</year-end>
    </date>
    <tags>
      <tag>political song</tag>
      <tag>patriotic song</tag>
    </tags>
    <melody>Avec les jeux dans le village</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Waarde Burgers, Neerlands <rhyme label="a" type="f">braaven</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">Die voor recht en vryheid <rhyme label="b" type="m">waakt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Toont met my te zyn <rhyme label="a" type="f" corresp="#s1:l1">Bataaven</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Eer ge in Slaverny <rhyme label="b" type="m" corresp="#s1:l2">geraakt</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Laaten wy verÃ«nigd <rhyme label="c" type="f">werken</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Bieden wy elkaar de <rhyme label="d" type="m">hand</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Om de Vryheid te <rhyme label="c" type="f" corresp="#s1:l5">versterken</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">In ons dierbaar <rhyme label="d" type="m" corresp="#s1:l6">Vaderland</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hoe de Heerschzugt ook mag <rhyme label="a" type="f">loeijen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Met een Burgerbeul aan 't <rhyme label="b" type="m">hoofd</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Vryheid zal toch eeuwig <rhyme label="a" type="f" corresp="#s2:l1">bloeijen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Vryheid word nooit <rhyme label="b" type="m" corresp="#s2:l2">uitgedooft</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Vryheid is myn lust myn <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Vryheid is my, alles <rhyme label="d" type="m">waard</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">'k Wil voor Vryheid alles <rhyme label="c" type="f" corresp="#s2:l5">geven</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Vryheid is het best op <rhyme label="d" type="m" corresp="#s2:l6">d'Aard</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Edele Vryheid voor uw <rhyme label="a" type="f">Rechten</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">In dit vrye <rhyme label="b" type="m">Nederland</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Zullen we altoos moedig <rhyme label="a" type="f" corresp="#s3:l1">vegten</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Tot de Dwingland is van <rhyme label="b" type="m" corresp="#s3:l2">kant</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">'t Is voor Willem thans een <rhyme label="c" type="f">wonder</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Voor zyn Aanhang en <rhyme label="d" type="m">Cabaal</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Braven boven, Oranje <rhyme label="c" type="f" corresp="#s3:l5">onder</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Door het Neerlandsch <rhyme label="d" type="m" corresp="#s3:l6">Heldenstaal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vyfde Willem, moog vry <rhyme label="a" type="f">koomen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Met zyn Beulen op ons <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Wy Bataven hem niet <rhyme label="a" type="f" corresp="#s4:l1">schroomen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Neen wy allen, zullen <rhyme label="b" type="m" corresp="#s4:l2">staan</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Voor de Braave Heeren <rhyme label="c" type="f">Staaten</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Wagen wy ons lyf vol <rhyme label="d" type="m">moed</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Nimmer zal men hun <rhyme label="c" type="f" corresp="#s4:l5">verlaaten</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Voor den laatsten druppel <rhyme label="d" type="m" corresp="#s4:l6">bloed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Houd dus moet gy <rhyme label="a" type="f">Vryheidszoonen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Die de Vryheid hoog <rhyme label="b" type="m">waardeert</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Laaten we als Bataven <rhyme label="a" type="f" corresp="#s5:l1">toonen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat geen Burger beul ons <rhyme label="b" type="m" corresp="#s5:l2">deert</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Zo moet Vryheid <rhyme label="c" type="f">zegenpraalen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">God der Vryheid, geef ons <rhyme label="d" type="m">macht</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Op dat we eeuwige Eer <rhyme label="c" type="f" corresp="#s5:l5">behaalen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Tot by 't laatste <rhyme label="d" type="m" corresp="#s5:l6">Nageslagt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
