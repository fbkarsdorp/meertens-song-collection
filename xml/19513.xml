  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'T Is een Knegje naar het <rhyme label="a" type="f">Leven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">'t Is een Vryer heel <rhyme label="b" type="m">volmaact</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">In de Minne kunst <rhyme label="a" type="f" corresp="#s1:l1">bedreven</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Nogh wil Kaatje hem niet <rhyme label="a" type="f" corresp="#s1:l1">geven</rhyme></l>
        <l id="s1:l5" met="4" type="+-">'t Woortje daer siin Ziel na <rhyme label="b" type="m" corresp="#s1:l2">haakt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wel wat mag het Meisje <rhyme label="a" type="f">porren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Datse hem niet lugten <rhyme label="b" type="m">kan</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Hoor Piet van de gouwe <rhyme label="a" type="f" corresp="#s2:l1">Torren</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die soo cierliik voor ons <rhyme label="a" type="f" corresp="#s2:l1">snorren</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Komt noit eenig voordeel <rhyme label="b" type="m" corresp="#s2:l2">van</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maar de Bytjes die ons <rhyme label="a" type="f">steken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Geven Honig, <rhyme label="b" type="m">suiker-soet</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Daarom denktse, slechte <rhyme label="a" type="f" corresp="#s3:l1">Leeken</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die in moie Kleren <rhyme label="a" type="f" corresp="#s3:l1">steeken</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Doen geen Jeugdig Meisje <rhyme label="b" type="m" corresp="#s3:l2">goet</rhyme>.</l>
      </lg>
    </lg>
  </text>
