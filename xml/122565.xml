  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wel wat een raar <rhyme label="a" type="m">geval</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Moet ik u gaan <rhyme label="b" type="f">verhalen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Al van twee liefjes <rhyme label="a" type="m" corresp="#s1:l1">dan</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die beminde zoo <rhyme label="b" type="f" corresp="#s1:l2">malkaâr</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Door zuivre liefde en <rhyme label="c" type="m">trouw</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Als echte man en <rhyme label="c" type="m" corresp="#s1:l5">vrouw</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hoort wat hieruit <rhyme label="a" type="m">ontstaat</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Haar ouders dit <rhyme label="b" type="f">aanhoorde</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Vol boosheid ende <rhyme label="a" type="m" corresp="#s2:l1">kwaad</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dit wilde gaan <rhyme label="b" type="f" corresp="#s2:l2">verstooren</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hij sprak zijn dochter <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Gij zult hem laten <rhyme label="c" type="m" corresp="#s2:l5">gaan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Zoo gij dit durft <rhyme label="a" type="m">bestaan</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zult gij van ons niet <rhyme label="b" type="f">erven</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En in een klooster <rhyme label="a" type="m" corresp="#s3:l1">gaan</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wij zien u liever <rhyme label="b" type="f" corresp="#s3:l2">sterven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Doet dan toch ons <rhyme label="c" type="m">begeert'</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Want hij is <rhyme label="c" type="m" corresp="#s3:l5">Gereformeerd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Zij viel toen in <rhyme label="a" type="m">onmagt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En zij en kon niet <rhyme label="b" type="f">spreken</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Albert kwam voor den <rhyme label="a" type="m" corresp="#s4:l1">dag</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met liefde heel <rhyme label="b" type="f" corresp="#s4:l2">ontsteken</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Hij sprak: och, Liefje <rhyme label="c" type="m">zoet</rhyme>!</l>
        <l id="s4:l6" met="3" type="-+">Bedaar toch uw <rhyme label="c" type="m" corresp="#s4:l5">gemoed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Haar vader sprak hem <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wilt uw geloof <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En wordt dan <rhyme label="a" type="m" corresp="#s5:l1">Roomschgezind</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Met liefde <rhyme label="b" type="f" corresp="#s5:l2">bovematen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">En trouw dan met uw <rhyme label="c" type="m">Lief</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Houdt haar tot uw <rhyme label="c" type="m" corresp="#s5:l5">gerief</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hij beloofde dat met <rhyme label="a" type="m">mond</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Maar 't hart kon het niet <rhyme label="b" type="f">wijden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Hij kreeg daarvan <rhyme label="a" type="m" corresp="#s6:l1">berouw</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Zijn gemoed kon dat niet <rhyme label="b" type="f" corresp="#s6:l2">lijden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Hij riep toen <rhyme label="c" type="m">overluid</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ik schei er weêr van <rhyme label="c" type="m" corresp="#s6:l5">uit</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Toen werd haar moeder <rhyme label="a" type="m">kwaad</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Met achterdocht wilt <rhyme label="b" type="f">weten</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Eer dat het was te <rhyme label="a" type="m" corresp="#s7:l1">laat</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Liet aan haar vader <rhyme label="b" type="f" corresp="#s7:l2">weten</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Hier diend wel op <rhyme label="c" type="m">gelet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Zij nam haar bij zich te <rhyme label="c" type="m" corresp="#s7:l5">bed</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maar dit duurde niet <rhyme label="a" type="m">lang</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">Zij had daarin geen <rhyme label="b" type="f">behagen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Het missen van haar <rhyme label="a" type="m" corresp="#s8:l1">man</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Kon haar natuur niet <rhyme label="b" type="f" corresp="#s8:l2">dragen</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Zij stuurde haar heen en <rhyme label="c" type="m">weêr</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Lag ze bij haar zuster <rhyme label="c" type="m" corresp="#s8:l5">neêr</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">De zuster hierop <rhyme label="a" type="m">let</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Liet dat haar Liefste <rhyme label="b" type="f">weten</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Als dat zij bij haar te <rhyme label="a" type="m" corresp="#s9:l1">bed</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Malkander konden <rhyme label="b" type="f" corresp="#s9:l2">spreken</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En dat uit liefde en <rhyme label="c" type="m">trouw</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Maar niet als man en <rhyme label="c" type="m" corresp="#s9:l5">vrouw</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Maar vrinden hoort eens <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Men ging daar <rhyme label="b" type="f">overleggen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Twee Liefjes met <rhyme label="a" type="m" corresp="#s10:l1">elkaâr</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Zonder iemand te <rhyme label="b" type="f" corresp="#s10:l2">zeggen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En dat met goed <rhyme label="c" type="m">accoord</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Te trekken zamen <rhyme label="c" type="m" corresp="#s10:l5">voort</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Men huurde dan een <rhyme label="a" type="m">chais</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Met twee gezwinde <rhyme label="b" type="f">paarden</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Die liepen nacht en <rhyme label="a" type="m" corresp="#s11:l1">dag</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Schielijk over de <rhyme label="b" type="f" corresp="#s11:l2">aarde</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Zij vlogen met een <rhyme label="c" type="m">zweev'</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Al naar de stad van <rhyme label="c" type="m" corresp="#s11:l5">Kleef</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">O, Jan van Leijden! <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Nu zit gij in <rhyme label="b" type="f">benaauwen</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Uw dochter die is <rhyme label="a" type="m" corresp="#s12:l1">voort</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Pelkooren zal haar <rhyme label="b" type="f" corresp="#s12:l2">trouwen</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Hij is nu <rhyme label="c" type="m">Roomschgezind</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Gelijk u eigen <rhyme label="c" type="m" corresp="#s12:l5">kind</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Die dit liedje hebben <rhyme label="a" type="m">gedicht</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Dat bennen drie <rhyme label="b" type="f">Gezellen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Hun hartjes zijnen <rhyme label="a" type="m" corresp="#s13:l1">ligt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Zij gaan het ook <rhyme label="b" type="f" corresp="#s13:l2">vertellen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">En zingen met een <rhyme label="c" type="m">vlugt</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Van deze rare <rhyme label="c" type="m" corresp="#s13:l5">klugt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
