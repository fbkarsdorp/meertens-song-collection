  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="6" type="-+">Philis en wilt ghy niet, ghenesen myne <rhyme label="a" type="f">smerte</rhyme>?</l>
        <l id="s1:l2" met="2" type="-+">Nacht, ende <rhyme label="b" type="m">dagh</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Roep ick naer u met droef <rhyme label="b" type="m" corresp="#s1:l2">beklagh</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">U straf ghemoet, en kent gheen <rhyme label="c" type="m">min</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">O stuere <rhyme label="c" type="m" corresp="#s1:l4">Goddin</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Laet my maer <rhyme label="d" type="f">beroemen</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Dat ick u magh <rhyme label="d" type="f" corresp="#s1:l6">noemen</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Myn weerde <rhyme label="c" type="m" corresp="#s1:l4">Vrindin</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="6" type="-+">Alleenlyck door den glans van u doorluchtigh <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Myn vierigh <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En myn ghemoet on-steken <rhyme label="b" type="m" corresp="#s2:l2">wert</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Myn lyf, en ziel, met liefdens <rhyme label="c" type="m">bant</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Schenck ick u te <rhyme label="c" type="m" corresp="#s2:l4">pant</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Laet my maer <rhyme label="d" type="f">beroemen</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Dat ick u magh <rhyme label="d" type="f" corresp="#s2:l6">noemen</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Oorsaeck van myn <rhyme label="c" type="m" corresp="#s2:l4">brant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="6" type="-+">O voedtsel van myn min, thoont toch u slaef <rhyme label="a" type="f">ghenade</rhyme>?</l>
        <l id="s3:l2" met="2" type="-+">Want ghy <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Weerde Philis, en anders <rhyme label="b" type="m" corresp="#s3:l2">gheen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Kont myn verdriet brenghen tot <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">In myn Ionghe <rhyme label="c" type="m" corresp="#s3:l4">jeucht</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Laet my maer <rhyme label="d" type="f">beroemen</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Dat ick u magh <rhyme label="d" type="f" corresp="#s3:l6">noemen</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Al myn troost, en <rhyme label="c" type="m" corresp="#s3:l4">deucht</rhyme>.</l>
      </lg>
    </lg>
  </text>
