    <melody>Florida zo het wezen mag</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GEnooden, die gekoomen <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ter bruiloft, om te zijn <rhyme label="a" type="m" corresp="#s1:l1">verblijd</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ik bid, wild staadig <rhyme label="b" type="f">denken</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Om 't eeuwig vreugdig <rhyme label="c" type="m">bruiloftsmaal</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Dat God in 's Heemels <rhyme label="c" type="m" corresp="#s1:l4">zaal</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Zijn lieve bruid zal <rhyme label="b" type="f" corresp="#s1:l3">schenken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ey! en vergaap u hier toch <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Aan 't geen gy smaakt, of hoord of <rhyme label="a" type="m" corresp="#s2:l1">ziet</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">'t Zijn al maar yd'le <rhyme label="b" type="f">dingen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Te laag voor 't Christelijk <rhyme label="c" type="m">gemoed</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat zich met hooger <rhyme label="c" type="m" corresp="#s2:l4">voed</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En voor zulks moet <rhyme label="b" type="f" corresp="#s2:l3">bedwingen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als u de spijz en drank wel <rhyme label="a" type="m">spaakt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Of zingers heel u 't oor <rhyme label="a" type="m" corresp="#s3:l1">vermaakt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wild dat aandachtig <rhyme label="b" type="f">denken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Zoo God de mensch deez zoetheid <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Die steeds in boosheid <rhyme label="c" type="m" corresp="#s3:l4">leefd</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Och! wat zal Hy wel <rhyme label="b" type="f" corresp="#s3:l3">schenken</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Aan die noch vlek noch rimpel <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En steeds aan-dachtig zuiver <rhyme label="a" type="m" corresp="#s4:l1">leefd</rhyme></l>
        <l id="s4:l3" met="3" type="-+">In heil'ge <rhyme label="b" type="f">wandelingen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die in 't forneis als goud zal <rhyme label="c" type="m">staan</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Als 't alles zal <rhyme label="c" type="m" corresp="#s4:l4">vergaan</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">De aard en aardze <rhyme label="b" type="f" corresp="#s4:l3">dingen</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O on-begrijpelijke <rhyme label="a" type="m">vreugd</rhyme>!</l>
        <l id="s5:l2" met="4" type="-+">O on-uitspreekelijk <rhyme label="a" type="m" corresp="#s5:l1">geneugd</rhyme>!</l>
        <l id="s5:l3" met="3" type="-+">O zoetheid noit <rhyme label="b" type="f">vol-preezen</rhyme>!</l>
        <l id="s5:l4" met="4" type="-+">O rijk! o kroon! o hooge <rhyme label="c" type="m">throon</rhyme>!</l>
        <l id="s5:l5" met="3" type="-+">O alderschoonste <rhyme label="c" type="m" corresp="#s5:l4">schoon</rhyme>!</l>
        <l id="s5:l6" met="3" type="-+">Die daar zal eeuwig <rhyme label="b" type="f" corresp="#s5:l3">weezen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wech, wech dan met het aardz <rhyme label="a" type="m">ont-haal</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ik hoop op beeter <rhyme label="a" type="m" corresp="#s6:l1">bruilofts-maal</rhyme></l>
        <l id="s6:l3" met="3" type="-+">My naamaals te <rhyme label="b" type="f">vermaaken</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Met mijn lieven <rhyme label="c" type="m">bruidegom</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">O zoete Iesus <rhyme label="c" type="m" corresp="#s6:l4">kom</rhyme>!</l>
        <l id="s6:l6" met="3" type="-+">En laat my 't Heemels <rhyme label="b" type="f" corresp="#s6:l3">smaaken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Mij ziel met vlijt u derwaards <rhyme label="a" type="m">spoed</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En 't witte bruilofs kleed <rhyme label="a" type="m" corresp="#s7:l1">aan-doet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Niet flau, maar ras en <rhyme label="b" type="f">vaardig</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Stad-oog gesta'ig op 't Heemels <rhyme label="c" type="m">heil</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Al-tijd een oog in 't <rhyme label="c" type="m" corresp="#s7:l4">zeil</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">De zaak is dubbeld <rhyme label="b" type="f" corresp="#s7:l3">waardig</rhyme>.</l>
      </lg>
    </lg>
  </text>
