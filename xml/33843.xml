  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IK raedt u in te <rhyme label="a" type="f">trede</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die Poort die Enge <rhyme label="b" type="m">is</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Want d'ander Poort is <rhyme label="a" type="f" corresp="#s1:l1">breede</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Na de <rhyme label="b" type="m" corresp="#s1:l2">verderffenis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Noghtans met groote <rhyme label="a" type="f">hoopen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De menschen t'aller <rhyme label="b" type="m">stondt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De wijde Poort <rhyme label="a" type="f" corresp="#s2:l1">in-loopen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En voorts in d'helsch <rhyme label="b" type="m" corresp="#s2:l2">afgrondt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Des Hemels Poort is <rhyme label="a" type="f">smalle</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En engh is 's Hemels <rhyme label="b" type="m">pat</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En weynige van <rhyme label="a" type="f" corresp="#s3:l1">alle</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Der sijn die vinden <rhyme label="b" type="m" corresp="#s3:l2">dat</rhyme>.</l>
      </lg>
    </lg>
