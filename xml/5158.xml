<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>5158</id>
    <date>
      <year-start>1924</year-start>
      <year-end>1925</year-end>
    </date>
    <tags>
      <tag>beggar song</tag>
      <tag>history song</tag>
    </tags>
    <melody>Schoon liefje jent zeer excellent</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wie wil hooren een goet nieu <rhyme label="a" type="m">liedt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hoort toe ick sal u <rhyme label="b" type="f">singhen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Al wat voor Alckmaer is <rhyme label="a" type="m" corresp="#s1:l1">gheschiet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hoort toe na mijn <rhyme label="a" type="m" corresp="#s1:l1">bediet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ick sal u lieghen <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Het zijn also vremde <rhyme label="b" type="f" corresp="#s1:l2">dinghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Don Frederick die wreede <rhyme label="a" type="m">Tyran</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Met al zijn Spangiaerts end <rhyme label="b" type="f">gheschoren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Zy quamen daer voor Alckmaer <rhyme label="a" type="m" corresp="#s2:l1">an</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Sy meynden in te <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Maer sy moesten buyten <rhyme label="a" type="m" corresp="#s2:l1">staen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Haer mening was <rhyme label="b" type="f" corresp="#s2:l2">verlooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De Borghers van Haerlem hy me <rhyme label="a" type="m">brocht</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Mosten doen <rhyme label="b" type="f">Pionieren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Sy zijn daer also wel <rhyme label="a" type="m" corresp="#s3:l1">besocht</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Sy haddent niet <rhyme label="a" type="m" corresp="#s3:l1">ghedocht</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Met de doot elck meest <rhyme label="a" type="m" corresp="#s3:l1">becocht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Het was quaet <rhyme label="b" type="f" corresp="#s3:l2">avontuere</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den xviij. Septembris wilt <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Ontrent vier <rhyme label="b" type="f">uren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Met metale stucken wel <rhyme label="a" type="m" corresp="#s4:l1">ghelaen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Al om te schieten <rhyme label="a" type="m" corresp="#s4:l1">saen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Alckmaer heeft haer <rhyme label="a" type="m" corresp="#s4:l1">ontfaen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat syt moesten <rhyme label="b" type="f" corresp="#s4:l2">besueren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Met thien duysent mannen quamen sy <rhyme label="a" type="m">rat</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En meenden Alckmaer te <rhyme label="b" type="f">beslechten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Schooten daer so dapper aen deen zijde <rhyme label="a" type="m" corresp="#s5:l1">plat</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Sy maeckten aldaer een <rhyme label="a" type="m" corresp="#s5:l1">gat</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Menighe Spangiaert <rhyme label="a" type="m" corresp="#s5:l1">aentrat</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Om Alckmaer te <rhyme label="b" type="f" corresp="#s5:l2">bevechten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Een Brug hadde sy gemaeckt seer <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Om over de Gracht te <rhyme label="b" type="f">loopen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Maer sy ginck te gronde also <rhyme label="a" type="m" corresp="#s6:l1">snel</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Sy was te cort, hoort mijn <rhyme label="a" type="m" corresp="#s6:l1">vertel</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">De Borghers als Leeuwen <rhyme label="a" type="m" corresp="#s6:l1">fel</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Smeten haer doot met <rhyme label="b" type="f" corresp="#s6:l2">hoopen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">T'kermen en krijten was so <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Al vande Papen <rhyme label="b" type="f">knechten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Drie groote Heeren daer bleven <rhyme label="a" type="m" corresp="#s7:l1">doot</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Bossu dat seer <rhyme label="a" type="m" corresp="#s7:l1">verdroot</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Hy creech oock selfs eenen <rhyme label="a" type="m" corresp="#s7:l1">schoot</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Hy stont wel als den <rhyme label="b" type="f" corresp="#s7:l2">slechten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel hondert sachmen daer <rhyme label="a" type="m">bloen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Die ghequest en doot <rhyme label="b" type="f">bleven</rhyme></l>
        <l id="s8:l3" met="4" type="-+">De Vroukens waren daer also <rhyme label="a" type="m" corresp="#s8:l1">coen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Van Pick en Teer maeckten sy <rhyme label="a" type="m" corresp="#s8:l1">hoen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Al om de Spangiaerts hals te <rhyme label="a" type="m" corresp="#s8:l1">doen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Hoe waren sy doen <rhyme label="b" type="f" corresp="#s8:l2">verheven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Aldus worden sy voor Alckmaer <rhyme label="a" type="m">gheloont</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Wilt dit doch wel <rhyme label="b" type="f">onthouwen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Met bernenden hoepen werden sy <rhyme label="a" type="m" corresp="#s9:l1">ghecroont</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Denckt hoet haer heeft <rhyme label="a" type="m" corresp="#s9:l1">verschoont</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Ghy steden u macht me <rhyme label="a" type="m" corresp="#s9:l1">thoont</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Daer sy comen te <rhyme label="b" type="f" corresp="#s9:l2">benouwen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Sy waren metten buyt niet wel te <rhyme label="a" type="m">vreen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Die sy voor Alckmaer <rhyme label="b" type="f">creghen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Men sachse tot de billen doort water <rhyme label="a" type="m" corresp="#s10:l1">treen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Seer diep wast tot allen <rhyme label="a" type="m" corresp="#s10:l1">steen</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Nochtans moesten sy gaen <rhyme label="a" type="m" corresp="#s10:l1">heen</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Met haer gheschut waren sy <rhyme label="b" type="f" corresp="#s10:l2">verleghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Wy Borghers van Alckmaer jonck end <rhyme label="a" type="m">out</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Willen God dancken en <rhyme label="b" type="f">loven</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dat hy ons heeft verlost vanden vyanden <rhyme label="a" type="m" corresp="#s11:l1">stout</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Die ons hadden seer <rhyme label="a" type="m" corresp="#s11:l1">benout</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Hy heeft haer also <rhyme label="a" type="m" corresp="#s11:l1">verflout</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Dat sy wech zijn <rhyme label="b" type="f" corresp="#s11:l2">ghestoven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Lof Prince God onse Vader <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Door Christum uwen Sone <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Wy bidden u wilt ons noch bewaren <rhyme label="a" type="m" corresp="#s12:l1">soet</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Voor dit spaensche <rhyme label="a" type="m" corresp="#s12:l1">ghebroet</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Neemt ons in u <rhyme label="a" type="m" corresp="#s12:l1">behoet</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Wilt ons beschermer doch <rhyme label="b" type="f" corresp="#s12:l2">wesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
