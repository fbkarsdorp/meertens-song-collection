  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="1" type="+-"><rhyme label="a" type="f">SCaatelijk</rhyme>,</l>
        <l id="s1:l2" met="1" type="+-"><rhyme label="a" type="f" corresp="#s1:l1">Maatelijk</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Mag men wel <rhyme label="b" type="f">drinken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Voetjes te lichten, en 't keeltje doen <rhyme label="b" type="f" corresp="#s1:l3">klinken</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">'t Word al uit vreugd en liefde <rhyme label="c" type="f">bedreven</rhyme>.</l>
        <l id="s1:l6" met="4" type="+-">Menschen en konnen als Eng'len niet <rhyme label="c" type="f" corresp="#s1:l5">leven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="1" type="+-">Wakker <rhyme label="a" type="f">an</rhyme>,</l>
        <l id="s2:l2" met="1" type="+-">Vollig <rhyme label="a" type="f" corresp="#s2:l1">dan</rhyme></l>
        <l id="s2:l3" met="2" type="+-">Lustig om 't <rhyme label="b" type="f">kansje</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Yeder vereert nu de Bruyd met een <rhyme label="b" type="f" corresp="#s2:l3">dansje</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Za Iuffertjes, op; wel moet men u <rhyme label="c" type="f">haalen</rhyme>?</l>
        <l id="s2:l6" met="4" type="+-">Zo zulje 't eerst met een kusje <rhyme label="c" type="f" corresp="#s2:l5">betaalen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="1" type="+-"><rhyme label="a" type="f">Altemaal</rhyme>,</l>
        <l id="s3:l2" met="1" type="+-">In de <rhyme label="a" type="f" corresp="#s3:l1">zaal</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Vrolijk, en <rhyme label="b" type="f">zoetjes</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Helder eens op, hey repter uw <rhyme label="b" type="f" corresp="#s3:l3">voetjes</rhyme>!</l>
        <l id="s3:l5" met="4" type="+-">Dat is u voor, op 't klinken der <rhyme label="c" type="f">snaaren</rhyme>.</l>
        <l id="s3:l6" met="4" type="+-">'t Hertje mag nu geen vreugde <rhyme label="c" type="f" corresp="#s3:l5">bewaaren</rhyme>.</l>
      </lg>
    </lg>
  </text>
