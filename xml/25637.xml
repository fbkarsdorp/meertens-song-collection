  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Geeft my, O lieve <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Een herte tot der <rhyme label="b" type="m">deucht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Nae u heylsame <rhyme label="a" type="f" corresp="#s1:l1">leere</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In mijne jonghe <rhyme label="b" type="m" corresp="#s1:l2">jeucht</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Daer in te hebben mijn <rhyme label="b" type="m" corresp="#s1:l2">gheneucht</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Daer in te hebben mijn <rhyme label="b" type="m" corresp="#s1:l2">gheneucht</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Van u voortaen // hoe ‘t sal <rhyme label="c" type="m">toegaen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Kiesen gheen ander <rhyme label="b" type="m" corresp="#s1:l2">vreucht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Raedt my nae uwen <rhyme label="a" type="f">wille</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Laet u behaghen <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dar ick my daer in <rhyme label="a" type="f" corresp="#s2:l1">stille</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Mach draghen wel <rhyme label="b" type="m" corresp="#s2:l2">ghemoet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Met kinderlijcken aerde <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Met kinderlijcken aerde <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Ghehoorsaem sijn // t’elcken <rhyme label="c" type="m">termijn</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Door u ghenade <rhyme label="b" type="m" corresp="#s2:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">T’uwaerts laet zijn mijn <rhyme label="a" type="f">wijcken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Teghens des Weerelts <rhyme label="b" type="m">slach</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Haer stricken en <rhyme label="a" type="f" corresp="#s3:l1">practijcken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die sy stelt voor den <rhyme label="b" type="m" corresp="#s3:l2">dach</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat ickse doch ontcomen <rhyme label="b" type="m" corresp="#s3:l2">mach</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dat ickse doch ontcomen <rhyme label="b" type="m" corresp="#s3:l2">mach</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">En zijn bevrijdt // tot aller <rhyme label="c" type="m">tijdt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Als sy comt int <rhyme label="b" type="m" corresp="#s3:l2">gheclach</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy en sal met <rhyme label="a" type="f">faelgieren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die hem tot u <rhyme label="b" type="m">bekeert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dus wilt mijn herte <rhyme label="a" type="f" corresp="#s4:l1">stieren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En maeckt my recht <rhyme label="b" type="m" corresp="#s4:l2">gheleert</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Liev’ Heer, te gaen soo ghy <rhyme label="b" type="m" corresp="#s4:l2">begeert</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Liev’ Heer, te gaen soo ghy <rhyme label="b" type="m" corresp="#s4:l2">begeert</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Den smallen ganck, mijn leven <rhyme label="c" type="m">lanck</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Hier toe mijn cracht <rhyme label="b" type="m" corresp="#s4:l2">vermeert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Costlijck en wel <rhyme label="a" type="f">beraden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met wijsheyt en <rhyme label="b" type="m">verstandt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Versiet my uyt <rhyme label="a" type="f" corresp="#s5:l1">ghenaden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met uwe milde <rhyme label="b" type="m" corresp="#s5:l2">handt</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Leydt my den weg naer t’Hemels <rhyme label="b" type="m" corresp="#s5:l2">landt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Leydt my den wegh naer t’Hemels <rhyme label="b" type="m" corresp="#s5:l2">landt</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Wat my ontbreeckt // maeckt heel <rhyme label="c" type="m">perfeckt</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Door uwer binnen <rhyme label="b" type="m" corresp="#s5:l2">brandt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Neemt my aen t’eenen <rhyme label="a" type="f">kinde</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Weest ghy mijn lieve <rhyme label="b" type="m">Vaer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Vwen Soon de <rhyme label="a" type="f" corresp="#s6:l1">beminde</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Wil ick gheen’ volghen <rhyme label="b" type="m" corresp="#s6:l2">naer</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">My houden by de Christen <rhyme label="b" type="m" corresp="#s6:l2">schaer</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">My houden by de Christen <rhyme label="b" type="m" corresp="#s6:l2">schaer</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Door uwe cracht // met door mijn <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Neemt my (die teer ben) <rhyme label="b" type="m" corresp="#s6:l2">waer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Liev’ Heer, ick my <rhyme label="a" type="f">verlate</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Op u ghenade <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ghy kent al mijnen <rhyme label="a" type="f" corresp="#s7:l1">state</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ick ben van deuchden <rhyme label="b" type="m" corresp="#s7:l2">bloot</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Heb niet verdient (Heer) dan den <rhyme label="b" type="m" corresp="#s7:l2">noot</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Heb niet verdient (Heer) dan den <rhyme label="b" type="m" corresp="#s7:l2">doot</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">V salicheyt // voor ons <rhyme label="c" type="m">bereyt</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Helpt my uyt aller <rhyme label="b" type="m" corresp="#s7:l2">noot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Singhen sal ick en <rhyme label="a" type="f">spelen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Als ick den troost <rhyme label="b" type="m">bevin</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Met blijder herten <rhyme label="a" type="f" corresp="#s8:l1">quelen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Voor sulck een groot <rhyme label="b" type="m" corresp="#s8:l2">ghewin</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Prent dit, Heer, in mijn herte <rhyme label="b" type="m" corresp="#s8:l2">in</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Prent dit, Heer, in mijn herte <rhyme label="b" type="m" corresp="#s8:l2">in</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Door uwen Gheest // verseghelt <rhyme label="c" type="m">meest</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Tot eenen nieuwen <rhyme label="b" type="m" corresp="#s8:l2">sin</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
