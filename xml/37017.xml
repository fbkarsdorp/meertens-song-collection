  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">NOë moet ghepresen <rhyme label="a" type="m">zyn</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hy is oorsprongh van den <rhyme label="a" type="m" corresp="#s1:l1">Wyn</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Door syn handt’ Zyn <rhyme label="b" type="m">gheplant</rhyme></l>
        <l id="s1:l4" met="2" type="+-">De <rhyme label="c" type="f">Wyn-stocken</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Die ons <rhyme label="c" type="f" corresp="#s1:l4">locken</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Door syn hant’ Is <rhyme label="b" type="m" corresp="#s1:l3">gheplant</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Den Wyngaert in 't <rhyme label="b" type="m" corresp="#s1:l3">Oosten-lant</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'k Groet u alder-liefste <rhyme label="a" type="m">Vrucht</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Ghy alleen baert my <rhyme label="a" type="m" corresp="#s2:l1">ghenucht</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Ghy zyt’ Die <rhyme label="b" type="m">verblydt</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Droeve <rhyme label="c" type="f">gheesten</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Om het <rhyme label="c" type="f" corresp="#s2:l4">meesten</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Ghy zyt’ Die <rhyme label="b" type="m" corresp="#s2:l3">verblydt</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Ider door u <rhyme label="b" type="m" corresp="#s2:l3">soetigheydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dit ghetuyght ons maer te <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Al het Volck van <rhyme label="a" type="m" corresp="#s3:l1">Israël</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Caleb, en <rhyme label="b" type="m">Josué</rhyme></l>
        <l id="s3:l4" met="2" type="+-">Die in <rhyme label="c" type="f">vreughden</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Hun <rhyme label="c" type="f" corresp="#s3:l4">verheughden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Caleb, en <rhyme label="b" type="m" corresp="#s3:l3">Josué</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Die de Wyn-druyf brogten <rhyme label="b" type="m" corresp="#s3:l3">mé</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laet ons naer den Wyn-gaert <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Sien de soete Druyven <rhyme label="a" type="m" corresp="#s4:l1">aen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Sien hoe schoon’ Sy ten <rhyme label="b" type="m">toon</rhyme></l>
        <l id="s4:l4" met="2" type="+-">Ons <rhyme label="c" type="f">ghenaken</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Tot het <rhyme label="c" type="f" corresp="#s4:l4">smaken</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Siet hoe schoon’ Sy ten <rhyme label="b" type="m" corresp="#s4:l3">toon</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Zyn ghevlochten in een <rhyme label="b" type="m" corresp="#s4:l3">Kroon</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wel-aen laet ons vrolyck <rhyme label="a" type="m">zyn</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Bachus schenckt ons synen <rhyme label="a" type="m" corresp="#s5:l1">Wyn</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Desen Vorst’ Uyt de <rhyme label="b" type="m">borst</rhyme></l>
        <l id="s5:l4" met="2" type="+-">Roept wilt <rhyme label="c" type="f">klincken</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Ende <rhyme label="c" type="f" corresp="#s5:l4">drincken</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Uyt de borst’ Roept den <rhyme label="b" type="m" corresp="#s5:l3">Vorst</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Vrienden komt bluscht uwen <rhyme label="b" type="m" corresp="#s5:l3">dorst</rhyme>.</l>
      </lg>
    </lg>
  </text>
