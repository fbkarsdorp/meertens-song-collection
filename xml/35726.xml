  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">KOmt Trooster Heyligh <rhyme label="a" type="m">Geest</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Comt, komt uyt 's hemels <rhyme label="b" type="f">hoven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Daelt neer, 't is <rhyme label="a" type="m" corresp="#s1:l1">Pincxter-feest</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Op d'Apost'len van <rhyme label="b" type="f" corresp="#s1:l2">boven</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Sy zijnen nu geheel <rhyme label="c" type="m">berooft</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Van haer Meester, en <rhyme label="c" type="m" corresp="#s1:l5">opper-hooft</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Ghy zijt, aen haer <rhyme label="c" type="m" corresp="#s1:l5">belooft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">d'Apostelen <rhyme label="a" type="m">vervaert</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En veel' de Iode <rhyme label="b" type="f">schromen</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Na Christus <rhyme label="a" type="m" corresp="#s2:l1">Hemel-vaert</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Tot Ierusalem <rhyme label="b" type="f" corresp="#s2:l2">komen</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Hondert twintigh zijnder bij <rhyme label="c" type="m">een</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Met gebogen harten, en <rhyme label="c" type="m" corresp="#s2:l5">le'en</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Stooten sy haer <rhyme label="c" type="m" corresp="#s2:l5">gebe'en</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Voor de Ioden <rhyme label="a" type="m">bevreest</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Is, dit volck in die <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Veel meer als voor <rhyme label="a" type="m" corresp="#s3:l1">tempeest</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Als 't kindt voor sware <rhyme label="b" type="f" corresp="#s3:l2">slagen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Als voor de Wolf 't onnoosel <rhyme label="c" type="m">Lam</rhyme>.</l>
        <l id="s3:l6" met="4" type="-+">Sy vreesen voor 't Swaert, Vyer of <rhyme label="c" type="m" corresp="#s3:l5">Vlam</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Niemandt uyt 't huys oyt <rhyme label="c" type="m" corresp="#s3:l5">quam</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">d'Heyligh Geest met <rhyme label="a" type="m">gedruys</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Comt, als de swaerste <rhyme label="b" type="f">winden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Vervulde 't heele <rhyme label="a" type="m" corresp="#s4:l1">huys</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Hier door dees Godes <rhyme label="b" type="f" corresp="#s4:l2">vrinden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Veel vromer als de Leeuwen <rhyme label="c" type="m">zijn</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">Achten 't vyer, doodt, en swaerste <rhyme label="c" type="m" corresp="#s4:l5">pijn</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Een droom, en ydel <rhyme label="c" type="m" corresp="#s4:l5">schijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Godes Geest zit mee op <rhyme label="a" type="m">haer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Als vierige <rhyme label="b" type="f">gespleten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Tongen; hier door sy <rhyme label="a" type="m" corresp="#s5:l1">klaer</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Als 's werelts spraecken <rhyme label="b" type="f" corresp="#s5:l2">weten</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Verlicht zijn als een <rhyme label="c" type="m">Cherubijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Sy branden als een <rhyme label="c" type="m" corresp="#s5:l5">Zeraphijn</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Verfoeyen 't eyge <rhyme label="c" type="m" corresp="#s5:l5">mijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Met Salomons <rhyme label="a" type="m">wijsheyt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sy treden tot de <rhyme label="b" type="f">Ioden</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Met Sampsons <rhyme label="a" type="m" corresp="#s6:l1">vroomigheydt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Vreesen geen hondert <rhyme label="b" type="f" corresp="#s6:l2">dooden</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">De Ioden uyt wat Landt van <rhyme label="c" type="m">daen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Uyt d'Apost'len haer tael <rhyme label="c" type="m" corresp="#s6:l5">verstaen</rhyme>;</l>
        <l id="s6:l7" met="3" type="-+">Zy al verwondert <rhyme label="c" type="m" corresp="#s6:l5">staen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den een d'ander <rhyme label="a" type="m">aen-rant</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Seyt: is 't volck niet <rhyme label="b" type="f">geboren</rhyme></l>
        <l id="s7:l3" met="3" type="-+">In 't Galtleensche <rhyme label="a" type="m" corresp="#s7:l1">Landt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Uyt wie w'onse spraeck <rhyme label="b" type="f" corresp="#s7:l2">hooren</rhyme>?</l>
        <l id="s7:l5" met="4" type="-+">d'Ander zeyt spottenden met <rhyme label="c" type="m">haer</rhyme>;</l>
        <l id="s7:l6" met="4" type="-+">Sy zijnen droncken, dit is <rhyme label="c" type="m" corresp="#s7:l5">klaer</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Petrus zeyt, 't is niet <rhyme label="c" type="m" corresp="#s7:l5">waer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Daer na d'Apostels <rhyme label="a" type="m">al</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ioden, of Heydens <rhyme label="b" type="f">leeren</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">En op dit <rhyme label="a" type="m" corresp="#s8:l1">tranen-dal</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Godts naem, en lof <rhyme label="b" type="f" corresp="#s8:l2">vermeeren</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Door de werelt gaen sy <rhyme label="c" type="m">geheel</rhyme>;</l>
        <l id="s8:l6" met="4" type="-+">Leven, Preecken sonder <rhyme label="c" type="m" corresp="#s8:l5">verscheel</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">Bekeeren menschen <rhyme label="c" type="m" corresp="#s8:l5">veel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
