  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">VRinden <rhyme label="a" type="f">uyt-ghelesen</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Die hier zyt <rhyme label="b" type="m">versaemt</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Wilt doch vrolyck <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Want het teenemael <rhyme label="b" type="m" corresp="#s1:l2">betaemt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Datmen vrolyck zy van <rhyme label="c" type="m">geest</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Alsmen ivers is te <rhyme label="c" type="m" corresp="#s1:l5">feest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Eet, en drinckt met <rhyme label="a" type="f">lusten</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">En weest niet <rhyme label="b" type="m">bedroeft</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Laet de sorghe <rhyme label="a" type="f" corresp="#s2:l1">rusten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Godt geeft al dat ons <rhyme label="b" type="m" corresp="#s2:l2">behoeft</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Datter niemandt pyse <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Als van maecken goede <rhyme label="c" type="m" corresp="#s2:l5">cier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Comt ghy <rhyme label="a" type="f">Sangh-Goddinnen</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">[...]aet Parnaβi <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Wilt een Liedt <rhyme label="a" type="f" corresp="#s3:l1">beginnen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Met een over soet <rhyme label="b" type="m" corresp="#s3:l2">gheschal</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">En ghy Pan comt met u <rhyme label="c" type="m">Fluyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Geeft een aenghenaem <rhyme label="c" type="m" corresp="#s3:l5">gheluyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Phoebe met uw' <rhyme label="a" type="f">Herpe</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Comt spelt uw' <rhyme label="b" type="m">party</rhyme>.</l>
        <l id="s4:l3" met="3" type="+-">Clio met <rhyme label="a" type="f" corresp="#s4:l1">Euterpe</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Woeght u by deês <rhyme label="b" type="m" corresp="#s4:l2">melody</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Orphée spelt op uwe <rhyme label="c" type="m">Lier</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">'t Saemen maeckt een soet <rhyme label="c" type="m" corresp="#s4:l5">ghetier</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">'t Is niet alle <rhyme label="a" type="f">daeghen</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Dat wy t'saemen <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Dus laet so nder <rhyme label="a" type="f" corresp="#s5:l1">claeghen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Ons verheughen groot, en <rhyme label="b" type="m" corresp="#s5:l2">clyn</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Ey laet ons doch alle <rhyme label="c" type="m">gaer</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Desen tydt nu nemen <rhyme label="c" type="m" corresp="#s5:l5">waer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Vreught in deught, en <rhyme label="a" type="f">eeren</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Is by tyden <rhyme label="b" type="m">goedt</rhyme>;</l>
        <l id="s6:l3" met="3" type="+-">Op dat wy <rhyme label="a" type="f" corresp="#s6:l1">vermeeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En verstercken onsen <rhyme label="b" type="m" corresp="#s6:l2">moet</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Om met meerder cracht, en <rhyme label="c" type="m">vlydt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Godt te dienen t'aller <rhyme label="c" type="m" corresp="#s6:l5">tydt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Om dan Godt te <rhyme label="a" type="f">dienen</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Beter nu <rhyme label="b" type="m">voortaen</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">Al waer't tot den <rhyme label="a" type="f" corresp="#s7:l1">thienen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Laet het ons hier houden <rhyme label="b" type="m" corresp="#s7:l2">staen</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">'k Hope, dat ons dese <rhyme label="c" type="m">vreught</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Stieren sal tot groote <rhyme label="c" type="m" corresp="#s7:l5">deught</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Men moet sigh oock <rhyme label="a" type="f">quyten</rhyme></l>
        <l id="s8:l2" met="3" type="+-">Met een goed' <rhyme label="b" type="m">santé</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Momus soud <rhyme label="a" type="f" corresp="#s8:l1">'tverwyten</rhyme></l>
        <l id="s8:l4" met="4" type="+-">t'En waer saecken dat men't <rhyme label="b" type="m" corresp="#s8:l2">dé</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">Want hoe wel het al <rhyme label="c" type="m">gheschiet</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Noch seght hy, ontbreckter <rhyme label="c" type="m" corresp="#s8:l5">iet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Wilt dan Bacche <rhyme label="a" type="f">schincken</rhyme></l>
        <l id="s9:l2" met="3" type="+-">Mildelyck van't <rhyme label="b" type="m">best</rhyme>;</l>
        <l id="s9:l3" met="3" type="+-">Men sal rontom <rhyme label="a" type="f" corresp="#s9:l1">drincken</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Van't beginsel tot het <rhyme label="b" type="m" corresp="#s9:l2">lest</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Ioufvrouw ick stel tot <rhyme label="c" type="m">'tbegin</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Uw' ghesontheydt hier med' <rhyme label="c" type="m" corresp="#s9:l5">in</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
