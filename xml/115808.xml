  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OF schoon het hert <rhyme label="a" type="m">gerust</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Op sterkt en waapens <rhyme label="a" type="m" corresp="#s1:l1">rust</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Op spietz, op lans, op <rhyme label="b" type="f">deegen</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Als maar de viand <rhyme label="c" type="m">naakt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En vast vuur-vlammend <rhyme label="c" type="m" corresp="#s1:l4">braakt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Zoo is 't beangst, <rhyme label="b" type="f" corresp="#s1:l3">verleegen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maar die op God <rhyme label="a" type="m">vertroud</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hem voor zijn anker <rhyme label="a" type="m" corresp="#s2:l1">houd</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In alle nood en <rhyme label="b" type="f">lijden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hoe naarder 't <rhyme label="c" type="m">on-geval</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hoe meerder God hem <rhyme label="c" type="m" corresp="#s2:l4">zal</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In-wendig doen <rhyme label="b" type="f" corresp="#s2:l3">verblijden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dies zett' ons hert zig <rhyme label="a" type="m">ne'er</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Op God, Hy is onz <rhyme label="a" type="m" corresp="#s3:l1">Heer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De wil en kan <rhyme label="b" type="f">beschermen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die zig beweegen <rhyme label="c" type="m">laat</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Door rouw van 't voorig <rhyme label="c" type="m" corresp="#s3:l4">quaad</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Om duzer zig 't <rhyme label="b" type="f" corresp="#s3:l3">erbermen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Laat dan vry 't <rhyme label="a" type="m">krijgs-gerugt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Door-schaateren de <rhyme label="a" type="m" corresp="#s4:l1">lugt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Laat duizenden van <rhyme label="b" type="f">koppen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Vry dringen op ons <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En naa onz leeven <rhyme label="c" type="m" corresp="#s4:l4">staan</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Haar moed-wil zal wel <rhyme label="b" type="f" corresp="#s4:l3">kroppen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O! hoe is 't vroom <rhyme label="a" type="m">gemoed</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat zig in hoope <rhyme label="a" type="m" corresp="#s5:l1">voed</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Op Goodes trouw <rhyme label="b" type="f">bewaaring</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Door-dronken vol van <rhyme label="c" type="m">weeld</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Als door zijn zinnen <rhyme label="c" type="m" corresp="#s5:l4">speeld</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Gods redden uit <rhyme label="b" type="f" corresp="#s5:l3">beswaaring</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hoe swemd zijn hert in <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wanneer hen maar <rhyme label="a" type="m" corresp="#s6:l1">geheugd</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Hoe God wel eer den <rhyme label="b" type="f">vroomen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">In d' alder-swaarste <rhyme label="c" type="m">nood</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Als Menschen hulpe <rhyme label="c" type="m" corresp="#s6:l4">vlood</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Te hulpe is <rhyme label="b" type="f" corresp="#s6:l3">gekoomen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hoe vuurig word zijn <rhyme label="a" type="m">Geest</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Als hy Gods bla'en <rhyme label="a" type="m" corresp="#s7:l1">door-leezd</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Hoe God hem voor de <rhyme label="b" type="f">zijnen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Getoond heeft, als een <rhyme label="c" type="m">held</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En 't woedende <rhyme label="c" type="m" corresp="#s7:l4">geweld</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Als rook heeft doen <rhyme label="b" type="f" corresp="#s7:l3">verdwijnen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Weg, weg dan aardze <rhyme label="a" type="m">stut</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die ramp nog leed <rhyme label="a" type="m" corresp="#s8:l1">af-schud</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Maar ramp slegts doet <rhyme label="b" type="f">verswaaren</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Gy kond geen dreigend <rhyme label="c" type="m">quaad</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Af-wenden in der <rhyme label="c" type="m" corresp="#s8:l4">daad</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Want God moet ons <rhyme label="b" type="f" corresp="#s8:l3">bewaaren</rhyme>.</l>
      </lg>
    </lg>
  </text>
