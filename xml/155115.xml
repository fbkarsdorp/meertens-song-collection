  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ADieu mijn Huys en <rhyme label="a" type="m">Stal</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En ghy mijn Schaepjes <rhyme label="a" type="m" corresp="#s1:l1">al</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">’k Sal u niet langer <rhyme label="b" type="f">hoeden</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Neen, neen, mijn Schaepjes! <rhyme label="c" type="m">neen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">U Harder sal <rhyme label="c" type="m" corresp="#s1:l4">alleen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Sijn druck met tranen <rhyme label="b" type="f" corresp="#s1:l3">voeden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En soecken over <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">In bosch, op bergh en <rhyme label="a" type="m" corresp="#s2:l1">dal</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">’t Schaep dat ick heb <rhyme label="b" type="f">verlooren</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Maer ’t Schaepje dat ick <rhyme label="c" type="m">meen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat is mijn <rhyme label="c" type="m" corresp="#s2:l4">Carileen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Mijn lief, mijn <rhyme label="b" type="f" corresp="#s2:l3">uytverkooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Vindt ick’er <rhyme label="a" type="m">nimmermeer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Soo sal ick <rhyme label="a" type="m" corresp="#s3:l1">nimmermeer</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Deez’ klav’re beemd <rhyme label="b" type="f">betreeden</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Soo ick haer missen <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Verlaet ick vee en <rhyme label="c" type="m" corresp="#s3:l4">goedt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En soeck’er dan <rhyme label="b" type="f" corresp="#s3:l3">beneden</rhyme>.</l>
      </lg>
    </lg>
  </text>
