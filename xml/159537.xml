  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Laat ons Baggus gaven <rhyme label="a" type="f">prijsen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">En aan Venus eer <rhyme label="a" type="f" corresp="#s1:l1">bewijsen</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Wijl zy ons <rhyme label="b" type="m">voed</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Met herts verrukkend <rhyme label="b" type="m" corresp="#s1:l3">zoet</rhyme>.</l>
        <l id="s1:l5" met="1" type="+-">Wie <rhyme label="c" type="m">agt</rhyme></l>
        <l id="s1:l6" met="1" type="+-">Haar <rhyme label="c" type="m" corresp="#s1:l5">kragt</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Niet, vol <rhyme label="d" type="f">bekoorlijkheden</rhyme>;</l>
        <l id="s1:l8" met="2" type="+-">En wie <rhyme label="e" type="m">prijst</rhyme></l>
        <l id="s1:l9" met="2" type="+-">Of <rhyme label="e" type="m" corresp="#s1:l8">bewijst</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Eer aan Bachus sonder <rhyme label="d" type="f" corresp="#s1:l7">reden</rhyme>:</l>
        <l id="s1:l11" met="2" type="+-">Wijl de <rhyme label="f" type="m">smert</rhyme></l>
        <l id="s1:l12" met="2" type="+-">Van het <rhyme label="f" type="m" corresp="#s1:l11">hert</rhyme></l>
        <l id="s1:l13" met="4" type="+-">Door zijn zap verdreven <rhyme label="f" type="m" corresp="#s1:l11">werd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wel aan, laat ons dan op <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Vrolijk onse jeugt <rhyme label="a" type="f" corresp="#s2:l1">besteden</rhyme></l>
        <l id="s2:l3" met="2" type="+-">En alle <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Verdrinken in de <rhyme label="b" type="m" corresp="#s2:l3">wijn</rhyme>.</l>
        <l id="s2:l5" met="1" type="+-">Elk <rhyme label="c" type="m">kust</rhyme></l>
        <l id="s2:l6" met="1" type="+-">Met <rhyme label="c" type="m" corresp="#s2:l5">lust</rhyme></l>
        <l id="s2:l7" met="3" type="+-">De mond van zijn <rhyme label="d" type="f">beminden</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Dan sal 't <rhyme label="e" type="m">hert</rhyme>,</l>
        <l id="s2:l9" met="2" type="+-">Vry van <rhyme label="e" type="m" corresp="#s2:l8">smert</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Venus gloed vol zoetheid <rhyme label="d" type="f" corresp="#s2:l7">vinden</rhyme>:</l>
        <l id="s2:l11" met="2" type="+-">Wyl dees <rhyme label="f" type="m">wijn</rhyme>,</l>
        <l id="s2:l12" met="2" type="+-">Ons kan <rhyme label="f" type="m" corresp="#s2:l11">zijn</rhyme>,</l>
        <l id="s2:l13" met="4" type="+-">Tegen-gift voor smert en <rhyme label="f" type="m" corresp="#s2:l11">pijn</rhyme>.</l>
      </lg>
    </lg>
