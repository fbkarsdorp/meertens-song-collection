  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DEnckt eens hoe dat Jaep gebruyt// <rhyme label="a" type="f">is</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van sijn Wijf, (dat quade <rhyme label="b" type="m">beest</rhyme>)</l>
        <l id="s1:l3" met="4" type="+-">Want soo dra die goethert uyt// <rhyme label="a" type="f" corresp="#s1:l1">is</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Bruyts’ hem, dat hy is <rhyme label="b" type="m" corresp="#s1:l2">bevreest</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Om eens, <rhyme label="c" type="m">maer</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Hier of <rhyme label="c" type="m" corresp="#s1:l5">daer</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Vrolijck by de maets te <rhyme label="d" type="m">zijn</rhyme>.</l>
        <l id="s1:l8" met="2" type="+-">By gants <rhyme label="e" type="f">kroonen</rhyme>,</l>
        <l id="s1:l9" met="2" type="+-">‘k Soud ’t haer <rhyme label="e" type="f" corresp="#s1:l8">loonen</rhyme></l>
        <l id="s1:l10" met="4" type="+-">(Wast mijn wijf) dat vuyle <rhyme label="d" type="m" corresp="#s1:l7">swijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">’k Was lest met hem om een <rhyme label="a" type="f">biertje</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">By de brugh tot swarte <rhyme label="b" type="m">Knier</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Voort quam daer dat soete <rhyme label="a" type="f" corresp="#s2:l1">Giertje</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Sach soo vriend’lijck als een <rhyme label="b" type="m" corresp="#s2:l2">Stier</rhyme>.</l>
        <l id="s2:l5" met="2" type="+-">Fluckx nae <rhyme label="c" type="m">huys</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">O wat een <rhyme label="c" type="m" corresp="#s2:l5">kruys</rhyme>!</l>
        <l id="s2:l7" met="4" type="+-">En wat droefheyt maeck jy <rhyme label="d" type="m">mijn</rhyme>?</l>
        <l id="s2:l8" met="2" type="+-">By gants <rhyme label="e" type="f">kroonen</rhyme>,</l>
        <l id="s2:l9" met="2" type="+-">‘k Soud ’t haer <rhyme label="e" type="f" corresp="#s2:l8">loonen</rhyme></l>
        <l id="s2:l10" met="4" type="+-">(Wast mijn wijf) dat vuyle <rhyme label="d" type="m" corresp="#s2:l7">swijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Soet wat, seyd’ hy, ‘k sal <rhyme label="a" type="f">betalen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">‘k Gae voort met jou, geen <rhyme label="b" type="m">geteem</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">(Riep sy weer) voort sonder <rhyme label="a" type="f" corresp="#s3:l1">dralen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat ick eerst mijn af-scheyd’ <rhyme label="b" type="m" corresp="#s3:l2">neem</rhyme>.</l>
        <l id="s3:l5" met="2" type="+-">Sprack de <rhyme label="c" type="m">Sul</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Neen, jou <rhyme label="c" type="m" corresp="#s3:l5">bul</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">‘k Wil niet, seyd’ dat <rhyme label="d" type="m">schijt-venijn</rhyme></l>
        <l id="s3:l8" met="2" type="+-">By gants <rhyme label="e" type="f">kroonen</rhyme>,</l>
        <l id="s3:l9" met="2" type="+-">‘k Soud ’t haer <rhyme label="e" type="f" corresp="#s3:l8">loonen</rhyme></l>
        <l id="s3:l10" met="4" type="+-">(Wast mijn wijf) dat vuyle <rhyme label="d" type="m" corresp="#s3:l7">swijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hy moest boort, maet sonder <rhyme label="a" type="f">kicken</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Sluypent als een <rhyme label="b" type="m">hoender-dief</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">‘k Bruyden arm en beenen <rhyme label="a" type="f" corresp="#s4:l1">sticken</rhyme></l>
        <l id="s4:l4" met="4" type="+-">(Sulcken varcken) alsoo <rhyme label="b" type="m" corresp="#s4:l2">lief</rhyme>.</l>
        <l id="s4:l5" met="2" type="+-">Neen, ick <rhyme label="c" type="m">houw</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Van geen <rhyme label="c" type="m" corresp="#s4:l5">vrouw</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Die een aer doet sulcken <rhyme label="d" type="m">pijn</rhyme>.</l>
        <l id="s4:l8" met="2" type="+-">By gans <rhyme label="e" type="f">kroonen</rhyme>,</l>
        <l id="s4:l9" met="2" type="+-">‘k Soud ’t haar <rhyme label="e" type="f" corresp="#s4:l8">loonen</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">Kreegh ick sulck een vuylen <rhyme label="d" type="m" corresp="#s4:l7">swijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
