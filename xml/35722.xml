    <melody>Nadien uw goddelijkheid</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">BLockers uwe <rhyme label="a" type="m">Patroon</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Geeft uw' een leeringh <rhyme label="a" type="m" corresp="#s1:l1">schoon</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Het Roomsch Geloof te <rhyme label="b" type="f">achten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Boven al dat d'werelt <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Godt mint met uwe <rhyme label="b" type="f" corresp="#s1:l3">krachten</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">'t Geloof oprecht <rhyme label="c" type="m" corresp="#s1:l4">beleeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Seght Blockers tot Godts <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">'k Sal doen na Pancrus <rhyme label="a" type="m" corresp="#s2:l1">leer</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Laet yder nu dit <rhyme label="b" type="f">spreecken</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Ick Blocker in het <rhyme label="c" type="m">Oost</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">'k Sal noyt daer in <rhyme label="b" type="f" corresp="#s2:l3">gebreecken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Godt weet mijn vast <rhyme label="c" type="m" corresp="#s2:l4">propoost</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sint Pancrus ons <rhyme label="a" type="m">patroon</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ey! wilt van Godes <rhyme label="a" type="m" corresp="#s3:l1">Soon</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Voor yder toch <rhyme label="b" type="f">verwerven</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Dat hy om goedt of <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Al most hy daerom <rhyme label="b" type="f" corresp="#s3:l3">sterven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">'t Geloof niet en <rhyme label="c" type="m" corresp="#s3:l4">verlaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Jesu, die alles <rhyme label="a" type="m">heeft</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">O Jesu! aen ons <rhyme label="a" type="m" corresp="#s4:l1">geeft</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">By ons Patroon te <rhyme label="b" type="f">raecken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daer na in 's Hemels <rhyme label="c" type="m">Throon</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wilt ons hier door blijt <rhyme label="b" type="f" corresp="#s4:l3">maecken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">O Iesu, Godes <rhyme label="c" type="m" corresp="#s4:l4">Soon</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
