  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OP eenen Joodschen <rhyme label="a" type="m">Paeschens-feest</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Quam Iesus weerom in de <rhyme label="b" type="m">Stadt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Jerusalem, daer is <rhyme label="a" type="m" corresp="#s1:l1">geweest</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Bethesda, een groot <rhyme label="b" type="m" corresp="#s1:l2">Water-badt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Om welk men vijf Portalen <rhyme label="a" type="m">sagh</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Als Kamers kostelijk <rhyme label="b" type="m">gemaekt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">In welke groote meenight <rhyme label="a" type="m" corresp="#s2:l1">lagh</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die waren met gebrek <rhyme label="b" type="m" corresp="#s2:l2">geraekt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als Blinden, Mancken, <rhyme label="a" type="m">Kreupelen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Verdrooghden, of die waren <rhyme label="b" type="m">flouw</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die wachten hier met <rhyme label="a" type="m" corresp="#s3:l1">meenighten</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat 't water hem beroeren <rhyme label="b" type="m" corresp="#s3:l2">souw</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Goodts Engel quam by tijden <rhyme label="a" type="m">daer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En roerden 't water in dit <rhyme label="b" type="m">badt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dan wiert 'er een gesondt daer <rhyme label="a" type="m" corresp="#s4:l1">naer</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die eerst van al dan daer in <rhyme label="b" type="m" corresp="#s4:l2">tradt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En onder ander was <rhyme label="a" type="m">aldaer</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Een man, die hadt geleegen <rhyme label="b" type="m">langk</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Den tijdt van aghtendertigh <rhyme label="a" type="m" corresp="#s5:l1">jaer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En bleef daer alsoo leggen <rhyme label="b" type="m" corresp="#s5:l2">krank</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wanneer als Jesus desen <rhyme label="a" type="m">sagh</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En merkten ook sijn <rhyme label="b" type="m">ouwigheydt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Van die daer soo verlaten <rhyme label="a" type="m" corresp="#s6:l1">lagh</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Heeft tot hem minnelijk <rhyme label="b" type="m" corresp="#s6:l2">geseydt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Soudt gy wel willen sijn <rhyme label="a" type="m">gesondt</rhyme>?</l>
        <l id="s7:l2" met="4" type="-+">Hy antwoordt, Heer, ik heb geen <rhyme label="b" type="m">man</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Als 't Water roert, soo is <rhyme label="a" type="m" corresp="#s7:l1">terstondt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Een ander reedt, dus ik niet <rhyme label="b" type="m" corresp="#s7:l2">kan</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">En Jesus seyde tot den <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Staet over eynde op uw' <rhyme label="b" type="m">been</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Neemt op uw' bedt, en wandelt <rhyme label="a" type="m" corresp="#s8:l1">dan</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Hy rees, en gingh met 't bedde <rhyme label="b" type="m" corresp="#s8:l2">heen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De Jooden seyden tot den <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Het is een hooge <rhyme label="b" type="m">Sabbath-dagh</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Wy seggen u nu, dat men <rhyme label="a" type="m" corresp="#s9:l1">dan</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Van daegh geen bedde dragen <rhyme label="b" type="m" corresp="#s9:l2">magh</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Den Man antwoorden met 'er <rhyme label="a" type="m">stondt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En seyde weerom tot de <rhyme label="b" type="m">Jood</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die mijn nu heeft gemaekt <rhyme label="a" type="m" corresp="#s10:l1">gesondt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Het bedt te dragen mijn <rhyme label="b" type="m" corresp="#s10:l2">gebood</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Sy vraeghden hem, wie of het <rhyme label="a" type="m">waer</rhyme>?</l>
        <l id="s11:l2" met="4" type="-+">Maer hy Heer Jesusm niet en <rhyme label="b" type="m">kondt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Die was geweeken uyt de <rhyme label="a" type="m" corresp="#s11:l1">schaer</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">De welk op deese plaetse <rhyme label="b" type="m" corresp="#s11:l2">stondt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En daer na Jesus weerom <rhyme label="a" type="m">vondt</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Hem, in den Tempel, ende <rhyme label="b" type="m">seydt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Besiet, want gy nu sijt <rhyme label="a" type="m" corresp="#s12:l1">gesondt</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Daeromme dan uyt sonden <rhyme label="b" type="m" corresp="#s12:l2">scheydt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Opdat daer na geen meerder <rhyme label="a" type="m">quaet</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Door sonden op uw' hals en <rhyme label="b" type="m">raekt</rhyme>.</l>
        <l id="s13:l3" met="4" type="-+">De Man de Joden seggen <rhyme label="a" type="m" corresp="#s13:l1">gaet</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Hem Jesus hadt gesondt <rhyme label="b" type="m" corresp="#s13:l2">gemaekt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Dus hem de Jooden haetten <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Om dat hy 't op een Sabbath <rhyme label="b" type="m">deed'</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">Maer Jesus haer antwoorde <rhyme label="a" type="m" corresp="#s14:l1">weer</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Mijn Vader werkt, en ik werk <rhyme label="b" type="m" corresp="#s14:l2">meed'</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dus haetten sy hem tot 'er <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Niet om den Sabbath-dagh <rhyme label="b" type="m">alleen</rhyme>;</l>
        <l id="s15:l3" met="4" type="-+">Maer om dat hy hem eeven <rhyme label="a" type="m" corresp="#s15:l1">groot</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Als Goodts Soon hiel, met Godt <rhyme label="b" type="m" corresp="#s15:l2">gemeen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">O Heer, wy sijn altijt soo <rhyme label="a" type="m">swack</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Wy bidden, wilt ons maken <rhyme label="b" type="m">sterk</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Op dat wy dragen onse <rhyme label="a" type="m" corresp="#s16:l1">pak</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">En tot uw glori doen ons <rhyme label="b" type="m" corresp="#s16:l2">werk</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
