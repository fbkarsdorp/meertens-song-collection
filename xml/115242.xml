    <melody>Psalm 009 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAnneer ghy sult door uw <rhyme label="a" type="m">geschreeuw</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Uytbrullen als een wreede <rhyme label="a" type="m" corresp="#s1:l1">Leeuw</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wanneer ghy sult, ô Heere, <rhyme label="b" type="f">brullen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Uw kind'ren tot u komen <rhyme label="b" type="f" corresp="#s1:l3">sullen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy sullen achter na u <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Sy sullen bevend komen <rhyme label="a" type="m" corresp="#s2:l1">aen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Gelijk een vogel uyt <rhyme label="b" type="f">Egipten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die 't net ter nauwer noot <rhyme label="b" type="f" corresp="#s2:l3">ontslipten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sy sullen in haer droev'ge <rhyme label="a" type="m">stant</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Gelijk een duyv' uyt Assurs <rhyme label="a" type="m" corresp="#s3:l1">lant</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Tot u gaen, die se sult <rhyme label="b" type="f">verschoonen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">End in haer huys doen seker <rhyme label="b" type="f" corresp="#s3:l3">woonen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ik schrey' tot u in mijn <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">O Godt, maer ghy en antwoordt <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Ik sta, om op uw hulp te <rhyme label="b" type="f">wachten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Maer ghy en meugt op my niet <rhyme label="b" type="f" corresp="#s4:l3">achten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghy zijt, gantsch tegen uw <rhyme label="a" type="m">natuer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Tot my geworden wreet en <rhyme label="a" type="m" corresp="#s5:l1">stuer</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Door uwer handen sterke <rhyme label="b" type="f">krachten</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Weerstaet ghy my als met <rhyme label="b" type="f" corresp="#s5:l3">verachten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer schoon ghy ook zijt noch soo <rhyme label="a" type="m">straf</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ik wil van u niet wijken <rhyme label="a" type="m" corresp="#s6:l1">af</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Want ghy en kont ons doch niet <rhyme label="b" type="f">haten</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Hoewel ghy schijnt ons te <rhyme label="b" type="f" corresp="#s6:l3">verlaten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ghy zijt, ô Heer, den ghenen <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Die u verwachten met <rhyme label="a" type="m" corresp="#s7:l1">ootmoet</rhyme>,.</l>
        <l id="s7:l3" met="4" type="-+">Der ziele die u soekt, en stil <rhyme label="b" type="f">is</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En hoopt en lijdt, soo als 't uw wil <rhyme label="b" type="f" corresp="#s7:l3">is</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Mijn ziele kleeft u achter <rhyme label="a" type="m">aen</rhyme>:</l>
        <l id="s8:l2" met="4" type="-+">Ik sal u doch niet laten <rhyme label="a" type="m" corresp="#s8:l1">gaen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Tot dat ik uwen lieven <rhyme label="b" type="f">zegen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Sal hebben, Heer, van u <rhyme label="b" type="f" corresp="#s8:l3">gekregen</rhyme>.</l>
      </lg>
    </lg>
  </text>
