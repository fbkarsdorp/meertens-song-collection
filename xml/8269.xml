  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Wil den mensch, te sot van <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Blindeling de wereldt <rhyme label="a" type="f" corresp="#s1:l1">minnen</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Zoo moet hij G/godts vijand <rhyme label="b" type="m">sijn</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Wil hij, willich, dwaesheidt <rhyme label="c" type="f">volgen</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Soo verdrinkt hij in de <rhyme label="c" type="f" corresp="#s1:l4">golgen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Van het zondich, helsch <rhyme label="b" type="m" corresp="#s1:l3">fenijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wil hij Vreese G/godts niet <rhyme label="a" type="f">kennen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Maer sich tot de boosheidt <rhyme label="a" type="f" corresp="#s2:l1">wennen</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Soo komt G/godes rechte <rhyme label="b" type="m">straf</rhyme></l>
        <l id="s2:l4" met="4" type="+-">D/dalen van des Hemels <rhyme label="c" type="f">throone</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Om geen dwase te <rhyme label="c" type="f" corresp="#s2:l4">verschoonen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Voor s'en liggen in het <rhyme label="b" type="m" corresp="#s2:l3">graf</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In 't graf vander oude <rhyme label="a" type="f">sonde</rhyme></l>
        <l id="s3:l2" met="4" type="+-">dat geen loot en kan <rhyme label="a" type="f" corresp="#s3:l1">begronden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dieper dan den <rhyme label="b" type="m">Oceaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Hittiger, vuriger als een <rhyme label="c" type="f">oven</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Of als *Ã†*tnaes cruijn <rhyme label="c" type="f" corresp="#s3:l4">gekloven</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Brandich, vlammich men siet <rhyme label="b" type="m" corresp="#s3:l3">staen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">O wee die de logen <rhyme label="a" type="f">soeken</rhyme></l>
        <l id="s4:l2" met="4" type="+-">En' de waerde wijsheidt <rhyme label="a" type="f" corresp="#s4:l1">vloeken</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Logen (mensch!) die doodt de <rhyme label="b" type="m">siel</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Waerheidts leere wildij <rhyme label="c" type="f">drucken</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Maer 't en sal u niet <rhyme label="c" type="f" corresp="#s4:l4">gelucken</rhyme> :</l>
        <l id="s4:l6" met="4" type="+-">zit vrij hooch op 't <rhyme label="b" type="m" corresp="#s4:l3">wankelwiel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Van uw' waen-geluk seer <rhyme label="a" type="f">prachtich</rhyme>;</l>
        <l id="s5:l2" met="4" type="+-">maer (Eij!) toeft, sij sal, <rhyme label="a" type="f" corresp="#s5:l1">onsachtich</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">u doen werpen in het <rhyme label="b" type="m">slijk</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Daer uw' siele in sal <rhyme label="c" type="f">sticken</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Want uw' V/vrouw' die sal <rhyme label="c" type="f" corresp="#s5:l4">beschicken</rhyme></l>
        <l id="s5:l6" met="4" type="+-">D/dat zij rijk blijv' in het <rhyme label="b" type="m" corresp="#s5:l3">rijk</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ik en zal geen weduw' <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Ik en heb geen noodt te <rhyme label="a" type="f" corresp="#s6:l1">vreesen</rhyme> ;</l>
        <l id="s6:l3" met="4" type="+-">Spreekt de blinde wereldt <rhyme label="b" type="m">sot</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">D/dwase leven sonder <rhyme label="c" type="f">smerten</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">En' sij spreken in haer <rhyme label="c" type="f" corresp="#s6:l4">herten</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Waerom wijs? Daer is geen <rhyme label="b" type="m" corresp="#s6:l3">G/godt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wat wil Liefde ons veel <rhyme label="a" type="f">nooden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Tot de wijsheidts wijn en' <rhyme label="a" type="f" corresp="#s7:l1">broode</rhyme>?</l>
        <l id="s7:l3" met="4" type="+-">Y! 't is al te slechte <rhyme label="b" type="m">mael</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">'T is te verr', ons <rhyme label="c" type="f">ongenegen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Om gaen; en' te smalle <rhyme label="c" type="f" corresp="#s7:l4">wegen</rhyme>:</l>
        <l id="s7:l6" met="4" type="+-">Breeder is des wereldts <rhyme label="b" type="m" corresp="#s7:l3">sael</rhyme>.</l>
      </lg>
    </lg>
  </text>
