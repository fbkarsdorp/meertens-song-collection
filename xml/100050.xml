    <melody>Op een tijd op een tijd</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ACh wanneer! ach <rhyme label="a" type="m">wanneer</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Zie ik die dagen <rhyme label="a" type="m" corresp="#s1:l1">weer</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Die 'k eertijts heb <rhyme label="b" type="f">genoten</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Toen 't een of 't ander Lansje <rhyme label="c" type="m">quam</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En mijn in bei zijn armen <rhyme label="c" type="m" corresp="#s1:l4">nam</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Dat heeft my nooit <rhyme label="b" type="f" corresp="#s1:l3">verdroten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Gulde tijdt! Ionge <rhyme label="a" type="m">tijdt</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Elaas! ik ben u <rhyme label="a" type="m" corresp="#s2:l1">quijt</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">En 't bloeienst' van myn <rhyme label="b" type="f">jaren</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Is als een Roos, die open <rhyme label="c" type="m">gaat</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">En 't wintje van'er steeltje <rhyme label="c" type="m" corresp="#s2:l4">slaat</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Al spelend' heen <rhyme label="b" type="f" corresp="#s2:l3">gevaren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hoe ik lonk, 't is te <rhyme label="a" type="m">laat</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">Mijn Ouderdom, <rhyme label="a" type="m" corresp="#s3:l1">versmaat</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Is koel, en traagh in 't <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Hei dat'er maar een <rhyme label="c" type="m">Iongh-gesel</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Kreeg Liefde tot mijn <rhyme label="c" type="m" corresp="#s3:l4">Ouwe-vel</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Ik zou 't noch wel <rhyme label="b" type="f" corresp="#s3:l3">beginnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maar wat raat! maar wat <rhyme label="a" type="m">raat</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">In quijn in deze <rhyme label="a" type="m" corresp="#s4:l1">staat</rhyme>;</l>
        <l id="s4:l3" met="3" type="+-">En blaas met stijve <rhyme label="b" type="f">kaken</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Op hoope, datter noch een <rhyme label="c" type="m">vlam</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Uit mijn bevrozen lippen <rhyme label="c" type="m" corresp="#s4:l4">quam</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">En iemants hart mocht <rhyme label="b" type="f" corresp="#s4:l3">raken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
