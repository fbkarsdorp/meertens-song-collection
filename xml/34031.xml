  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">TWee Discipels <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Nae Emaus willen <rhyme label="b" type="f">reysen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Jesus haer <rhyme label="a" type="m" corresp="#s1:l1">ontmoet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Seydt, wat sijn 't voor <rhyme label="b" type="f" corresp="#s1:l2">gepeysen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die gy te saem <rhyme label="c" type="m">verslaet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met droevige <rhyme label="c" type="m" corresp="#s1:l5">gelaet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dus met elkander <rhyme label="c" type="m" corresp="#s1:l5">praet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat een <rhyme label="a" type="m">vreemdelingh</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Sijt gy in dees <rhyme label="b" type="f">contreyen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Weet gy niet wat <rhyme label="a" type="m" corresp="#s2:l1">dingh</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Daer m' altemael om <rhyme label="b" type="f" corresp="#s2:l2">schreyen</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Hoe den Prophete <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Is op den Bergh <rhyme label="c" type="m" corresp="#s2:l5">Golgoot</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Met onrecht is <rhyme label="c" type="m" corresp="#s2:l5">gedoodt</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een soo vroomen <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">In woorden en in <rhyme label="b" type="f">werken</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als men vinden <rhyme label="a" type="m" corresp="#s3:l1">kan</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Voor Godt en menschen <rhyme label="b" type="f" corresp="#s3:l2">sterke</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Wy hadden vast <rhyme label="c" type="m">betrouw</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat hy IsraÃ«l <rhyme label="c" type="m" corresp="#s3:l5">souw</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Verlossen uyt den <rhyme label="c" type="m" corresp="#s3:l5">rouw</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy haer <rhyme label="a" type="m">onderreght</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Men in de Schrifte <rhyme label="b" type="f">leesen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat aen 't Kruys <rhyme label="a" type="m" corresp="#s4:l1">geheght</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Messias moste <rhyme label="b" type="f" corresp="#s4:l2">weesen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En dan daer nae eerst <rhyme label="c" type="m">weer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Als glorieusen <rhyme label="c" type="m" corresp="#s4:l5">Heer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Gaen in sijn volle <rhyme label="c" type="m" corresp="#s4:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy wordt ook <rhyme label="a" type="m">genoodt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Om binnen meed' te <rhyme label="b" type="f">eeten</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Als hy breekt het <rhyme label="a" type="m" corresp="#s5:l1">broodt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Soo koomen sy te <rhyme label="b" type="f" corresp="#s5:l2">weeten</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Dat het Heer Iesus <rhyme label="c" type="m">was</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En dus verdween hy <rhyme label="c" type="m" corresp="#s5:l5">ras</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Sy keeren hare <rhyme label="c" type="m" corresp="#s5:l5">pas</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Haestigh na de <rhyme label="a" type="m">Stat</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Daer al d' Apostels <rhyme label="b" type="f">waren</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En vertellen <rhyme label="a" type="m" corresp="#s6:l1">wat</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Haer t' Emaus was <rhyme label="b" type="f" corresp="#s6:l2">ervaren</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Sy doen <rhyme label="c" type="m">getuyghenis</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dat Iesus nu <rhyme label="c" type="m" corresp="#s6:l5">gewis</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Van doodt verresen <rhyme label="c" type="m" corresp="#s6:l5">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
