    <melody>Phyllis kwam Philander tegen</melody>
    <categories>
      <category translation="cycle of life">levenscyclus</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DIckwils heb ick hooren <rhyme label="a" type="f">klagen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Eenigheydt is naer en <rhyme label="b" type="m">bangh</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En met reden oock <rhyme label="a" type="f" corresp="#s1:l1">gewagen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Voor eensaemheydt ben ick <rhyme label="b" type="m" corresp="#s1:l2">angh</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Want in een alleenigh <rhyme label="c" type="m">hart</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Nestelt dickwils groote <rhyme label="c" type="m" corresp="#s1:l5">smart</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dit verstandt heeft oock <rhyme label="a" type="f">gesteecken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">In ons Bruydegom en <rhyme label="b" type="m">Bruydt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Gelijck heden is <rhyme label="a" type="f" corresp="#s2:l1">gebleecken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Doen sy (na een goet <rhyme label="b" type="m" corresp="#s2:l2">besluyt</rhyme>)</l>
        <l id="s2:l5" met="4" type="+-">Beyde haer <rhyme label="c" type="m">Eensamigheyt</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Ruylden aen <rhyme label="c" type="m" corresp="#s2:l5">gemeensaemheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Feest-genoden, laet ons <rhyme label="a" type="f">wenschen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Dat dees wisselingh van <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dese nieuw-vereende <rhyme label="a" type="f" corresp="#s3:l1">menschen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Nu en altijt wel <rhyme label="b" type="m" corresp="#s3:l2">vergaet</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">En dat steets de eene <rhyme label="c" type="m">min</rhyme></l>
        <l id="s3:l6" met="4" type="+-">By haer brenght de ander <rhyme label="c" type="m" corresp="#s3:l5">in</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Op dat liefde steets mach <rhyme label="a" type="f">bloeyen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Soo sal wisselijck de <rhyme label="b" type="m">vree</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En de eendracht, heuchlijck <rhyme label="a" type="f" corresp="#s4:l1">groeyen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Die gestadigh uyt dien <rhyme label="b" type="m" corresp="#s4:l2">stee</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Keeren twist, tweedraght en <rhyme label="c" type="m">haet</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">In den Echt een schendigh <rhyme label="c" type="m" corresp="#s4:l5">quaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">O! hoe saligh is sulck <rhyme label="a" type="f">paren</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Alsmen thien sinnen in <rhyme label="b" type="m">een</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Soo eenparigh siet <rhyme label="a" type="f" corresp="#s5:l1">vergaren</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Datse niet en sijn <rhyme label="b" type="m" corresp="#s5:l2">verscheen</rhyme>?</l>
        <l id="s5:l5" met="4" type="+-">Hoe geluckigh is dien <rhyme label="c" type="m">Echt</rhyme>?</l>
        <l id="s5:l6" met="4" type="+-">En in 't tegendeel, hoe <rhyme label="c" type="m" corresp="#s5:l5">slecht</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Nu wy hoopen, en <rhyme label="a" type="f">vertrouwen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Dat het hier sal gaen alst <rhyme label="b" type="m">hoort</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Op dat nimmer het <rhyme label="a" type="f" corresp="#s6:l1">berouwen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">d'Een of d'ander koom aen <rhyme label="b" type="m" corresp="#s6:l2">boort</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Soo sal yeder garen <rhyme label="c" type="m">zien</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Dat een Jaertjen wert tot <rhyme label="c" type="m" corresp="#s6:l5">thien</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hier toe wensch ick dat Godts <rhyme label="a" type="f">zegen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Vyt den Hemel neder <rhyme label="b" type="m">dael</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En veel-vuldigh als een <rhyme label="a" type="f" corresp="#s7:l1">regen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Haer bedauwe <rhyme label="b" type="m" corresp="#s7:l2">t'eenemael</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Want van daer het komen <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Dat de beste dienste <rhyme label="c" type="m" corresp="#s7:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Jonge Knaepjes, soete <rhyme label="a" type="f">Meysjes</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Die alhier nu zijn <rhyme label="b" type="m">vergaert</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Laet ons noch voor 't laetst een <rhyme label="a" type="f" corresp="#s8:l1">reysjes</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Wenschen, die nu zijn <rhyme label="b" type="m" corresp="#s8:l2">gepaert</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Dat geluck, heyl, en <rhyme label="c" type="m">voorspoet</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Haer toekoom in <rhyme label="c" type="m" corresp="#s8:l5">overvloet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
