<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>165594</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Edele artiesten koen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt of het eelste <rhyme label="a" type="m">zy</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hier voor de Mensch te <rhyme label="b" type="f">leeren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">'t Edelsten is, dat <rhyme label="a" type="m" corresp="#s1:l1">hy</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Sigh na de wil des <rhyme label="b" type="f" corresp="#s1:l2">Heeren</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van d'aenvangh sijner <rhyme label="c" type="f">jaren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Gewilligh schicken <rhyme label="d" type="m">leer</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">'t Geen hy gebiedt, <rhyme label="c" type="f" corresp="#s1:l5">beware</rhyme>;</l>
        <l id="s1:l8" met="3" type="-+">'t Geen verbied, uyt hem <rhyme label="d" type="m" corresp="#s1:l6">weer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waer leert hy eerst Gods <rhyme label="a" type="m">wil</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Noodigh om <rhyme label="b" type="f">t'onderhouden</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Hier houdt hem Moses <rhyme label="a" type="m" corresp="#s2:l1">stil</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Wet-gever aen den <rhyme label="b" type="f" corresp="#s2:l2">Ouden</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Hier moet hy Iesum <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Soo die hem die <rhyme label="d" type="m">gebiedt</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Soo hy in hem te <rhyme label="c" type="f" corresp="#s2:l5">vooren</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Daer van het voorbeeld <rhyme label="d" type="m" corresp="#s2:l6">siet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wat krijght de Mensch dan <rhyme label="a" type="m">door</rhyme></l>
        <l id="s3:l2" met="3" type="-+">'t Leven na die <rhyme label="b" type="f">geboden</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Groot is het loon hier <rhyme label="a" type="m" corresp="#s3:l1">voor</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Dat hy hier namaels <rhyme label="b" type="f" corresp="#s3:l2">Gode</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Gelijck in zijn <rhyme label="c" type="f">nature</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hem sien sal soo hy <rhyme label="d" type="m">is</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Een vreughd die staegh sal <rhyme label="c" type="f" corresp="#s3:l5">duren</rhyme>;</l>
        <l id="s3:l8" met="3" type="-+">Een eeuwig' <rhyme label="d" type="m" corresp="#s3:l6">erffenis</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mensch benje dan maer <rhyme label="a" type="m">wijs</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Leer datje 't aerdsche laet <rhyme label="b" type="f">varen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat maer der Wormen <rhyme label="a" type="m" corresp="#s4:l1">spijs</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ghy niet en kunt <rhyme label="b" type="f" corresp="#s4:l2">bewaren</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Leer hooger op te <rhyme label="c" type="f">stijgen</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Dat ghy door 't Hemelsche <rhyme label="d" type="m">goed</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">De overhandt mooght <rhyme label="c" type="f" corresp="#s4:l5">krijgen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">In al wat hier <rhyme label="d" type="m" corresp="#s4:l6">ontmoet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
