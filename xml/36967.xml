  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">RAmases en <rhyme label="a" type="m">Rostelaen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die hadden sigh van jonghs af <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Belooft hun echte <rhyme label="b" type="f">Trouwe</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maer als den tydt quam <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van naer de Trouw te <rhyme label="c" type="m" corresp="#s1:l4">gaen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Doen wirt d'on-trouwe <rhyme label="c" type="m" corresp="#s1:l4">Rostelaen</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Een anders <rhyme label="b" type="f" corresp="#s1:l3">Vrouwe</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als Ramases Monpeer dit <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Sweert hy de Bruydt en Bruygom <rhyme label="a" type="m" corresp="#s2:l1">moort</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En 't huys in brandt te <rhyme label="b" type="f">steken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En thoonen met den <rhyme label="c" type="m">brandt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Wat schelm-stuck ende <rhyme label="c" type="m" corresp="#s2:l4">schant</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dat is den brandt van echten <rhyme label="c" type="m" corresp="#s2:l4">bant</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Der Min te <rhyme label="b" type="f" corresp="#s2:l3">breken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer siet den Hemel self die <rhyme label="a" type="m">wreckt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Het schelm-stuck daer hy niet en <rhyme label="a" type="m" corresp="#s3:l1">spreckt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Den Bruyd'gom komt te <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Den Bruyd'gom scheydt daer <rhyme label="c" type="m">uyt</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">En syn beminde <rhyme label="c" type="m" corresp="#s3:l4">Bruydt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Weent dat haer hert' van droefheydt <rhyme label="c" type="m" corresp="#s3:l4">sluyt</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Dat s' hem moet <rhyme label="b" type="f" corresp="#s3:l3">derven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ja naer dit droevigh <rhyme label="a" type="m">on-geluck</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Valt sy noch in veel swaerder <rhyme label="a" type="m" corresp="#s4:l1">druck</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Haer Vader wordt <rhyme label="b" type="f">verwesen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Haer Moederende <rhyme label="c" type="m">Sy</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Om <rhyme label="c" type="m" corresp="#s4:l4">Landts-verradery</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Om van de Leeuwen alle <rhyme label="c" type="m" corresp="#s4:l4">dry</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Verscheurt te <rhyme label="b" type="f" corresp="#s4:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Daer komt de droeve <rhyme label="a" type="m">Rostelaáº½n</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Met d'ander twee in 't Perck <rhyme label="a" type="m" corresp="#s5:l1">ghegaen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Den handt boom wordt <rhyme label="b" type="f">ghetoghen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">De Leeuwen brisschen <rhyme label="c" type="m">styf</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Den eenen grypt het <rhyme label="c" type="m" corresp="#s5:l4">Wyf</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Den tweeden komt den Man op't <rhyme label="c" type="m" corresp="#s5:l4">lyf</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Fel <rhyme label="b" type="f" corresp="#s5:l3">toe-ghevloghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den uyt-ghestreken Vryer <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Syn on-trouw Vryster in 't <rhyme label="a" type="m" corresp="#s6:l1">verdriet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Hy springht van boven <rhyme label="b" type="f">neder</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En met een kloeck <rhyme label="c" type="m">exploot</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Steckt hy twee Leeuwen <rhyme label="c" type="m" corresp="#s6:l4">doot</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En gheeft haer 't leven in doodts <rhyme label="c" type="m" corresp="#s6:l4">noodt</rhyme></l>
        <l id="s6:l7" met="2" type="-+">Door syn doodt <rhyme label="b" type="f" corresp="#s6:l3">weder</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Daer light den trouwen Minnaer <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En d'on-trouw Bruydt is uyt den <rhyme label="a" type="m" corresp="#s7:l1">noodt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Maer s'en doet niet als <rhyme label="b" type="f">kryten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">s'En doet niet als met <rhyme label="c" type="m">rouw</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Als een on-eerbaer <rhyme label="c" type="m" corresp="#s7:l4">Vrouw</rhyme></l>
        <l id="s7:l6" met="4" type="-+">De breuck van haer beloofde <rhyme label="c" type="m" corresp="#s7:l4">trouw</rhyme></l>
        <l id="s7:l7" met="2" type="-+">Aen haer <rhyme label="b" type="f" corresp="#s7:l3">verwyten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sy leght van druck haer leven <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En wordt begraven in een <rhyme label="a" type="m" corresp="#s8:l1">graf</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Met Ramases <rhyme label="b" type="f">te-samen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sy die in 't leven <rhyme label="c" type="m">noodt</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Zyn tot een bedd' <rhyme label="c" type="m" corresp="#s8:l4">ghenoodt</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Die rusten nu naer hunne <rhyme label="c" type="m" corresp="#s8:l4">doodt</rhyme></l>
        <l id="s8:l7" met="2" type="-+">In 't graf <rhyme label="b" type="f" corresp="#s8:l3">te-samen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
