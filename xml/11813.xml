<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11813</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Lanterlu</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">HOe strengh wildy <rhyme label="a" type="f">rechten</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Harde <rhyme label="b" type="m">Pharizee</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">En de Wet <rhyme label="a" type="f" corresp="#s1:l1">beslechten</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Benje nu dus <rhyme label="b" type="m" corresp="#s1:l2">ree</rhyme>?</l>
        <l id="s1:l5" met="3" type="+-">Moet dit arme <rhyme label="c" type="f">Vrouwtje</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Soo terstont gesteenight <rhyme label="d" type="m">zijn</rhyme>?</l>
        <l id="s1:l7" met="4" type="+-">En door straf, Na haer <rhyme label="e" type="m">graf</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Gaen den Bergh van treuren <rhyme label="e" type="m" corresp="#s1:l7">af</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Dees nu <rhyme label="a" type="f">af-geleydet</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Nae de plaetse <rhyme label="b" type="m">toe</rhyme>:</l>
        <l id="s2:l3" met="3" type="+-">Sy tot Christum <rhyme label="a" type="f" corresp="#s2:l1">seyden</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Meester, maeckt ons <rhyme label="b" type="m" corresp="#s2:l2">vroe</rhyme>:</l>
        <l id="s2:l5" met="3" type="+-">Dees Vrouw is <rhyme label="c" type="f">bevonden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">In de sond van <rhyme label="d" type="m">Overspel</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Die de Wet, heeft <rhyme label="e" type="m">belet</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">En tot straf des doodts <rhyme label="e" type="m" corresp="#s2:l7">geset</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Dit zijn Mosis <rhyme label="a" type="f">woorden</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Die staen klaer en <rhyme label="b" type="m">bloot</rhyme>:</l>
        <l id="s3:l3" met="3" type="+-">Wie dees sond <rhyme label="a" type="f" corresp="#s3:l1">bekoorde</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Kreegh tot straf de <rhyme label="b" type="m" corresp="#s3:l2">doodt</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Wat is u <rhyme label="c" type="f">gevoelen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Van de Wet en van dees <rhyme label="d" type="m">Vrouw</rhyme>?</l>
        <l id="s3:l7" met="4" type="+-">Christus wist, al haer <rhyme label="e" type="m">list</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Dies soo scheyd' hy hare <rhyme label="e" type="m" corresp="#s3:l7">twist</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Hy daelt na der <rhyme label="a" type="f">aerde</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">En schreef daer in 't <rhyme label="b" type="m">sand</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Elck sich wat <rhyme label="a" type="f" corresp="#s4:l1">bedaerde</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">En sagh op sijn <rhyme label="b" type="m" corresp="#s4:l2">hand</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">VVie nu sonder sond <rhyme label="c" type="f">is</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Sprack hy, werp den eersten <rhyme label="d" type="m">steen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">En tast in, hert en <rhyme label="e" type="m">sin</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Of 't geweten hier stemt <rhyme label="e" type="m" corresp="#s4:l7">in</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Elck gingh sijnder <rhyme label="a" type="f">straten</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">En droop af ter <rhyme label="b" type="m">zy</rhyme>:</l>
        <l id="s5:l3" met="3" type="+-">'t Vrouwtjen wierd <rhyme label="a" type="f" corresp="#s5:l1">verlaten</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Christus bleef haer <rhyme label="b" type="m" corresp="#s5:l2">by</rhyme>:</l>
        <l id="s5:l5" met="3" type="+-">Waer zijn u <rhyme label="c" type="f">beklagers</rhyme>?</l>
        <l id="s5:l6" met="4" type="+-">Heeft noch niemandt u <rhyme label="d" type="m">verdoemt</rhyme>?</l>
        <l id="s5:l7" met="4" type="+-">Is 't geschiet, seght doch <rhyme label="e" type="m">yet</rhyme>?</l>
        <l id="s5:l8" met="4" type="+-">Sy sprack, Heere, niemandt <rhyme label="e" type="m" corresp="#s5:l7">niet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">'k Wil oock niet <rhyme label="a" type="f">verdoemen</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Gaet dan heen in <rhyme label="b" type="m">vree</rhyme>:</l>
        <l id="s6:l3" met="3" type="+-">Wilt den Heere <rhyme label="a" type="f" corresp="#s6:l1">roemen</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Die dees gunst u <rhyme label="b" type="m" corresp="#s6:l2">dee</rhyme>.</l>
        <l id="s6:l5" met="3" type="+-">Wandelt heen in <rhyme label="c" type="f">vreden</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Sondight doch voortaen niet <rhyme label="d" type="m">meer</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Want de sond, u <rhyme label="e" type="m">verwont</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">En verbreeckt Gods trouw <rhyme label="e" type="m" corresp="#s6:l7">verbont</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Siet hoe strengh en <rhyme label="a" type="f">schrander</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Mensch met Mensche <rhyme label="b" type="m">pleyt</rhyme>:</l>
        <l id="s7:l3" met="3" type="+-">'t Is by Godt al <rhyme label="a" type="f" corresp="#s7:l1">anders</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Daer 's <rhyme label="b" type="m" corresp="#s7:l2">meedogentheyt</rhyme>.</l>
        <l id="s7:l5" met="3" type="+-">Die sijn arme <rhyme label="c" type="f">sondaers</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Als 't berouw van herten <rhyme label="d" type="m">daelt</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">In den noodt, niet <rhyme label="e" type="m">verstoot</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Maer verlostse uyt den <rhyme label="e" type="m" corresp="#s7:l7">doodt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
