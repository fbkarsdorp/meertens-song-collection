<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186467</id>
    <date>
      <year-start>1793</year-start>
      <year-end>1793</year-end>
    </date>
    <tags/>
    <melody>Ik heb de groene straten</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">KOmt laat ons vrolyk <rhyme label="a" type="f">zingen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van de ed'le Kermis <rhyme label="b" type="m">vreugd</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Wyl zy, 't hart en <rhyme label="a" type="f" corresp="#s1:l1">zinnen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van oud en jong <rhyme label="b" type="m" corresp="#s1:l2">verheugd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zelfs kreup'len, krommen en <rhyme label="a" type="f">scheven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ziet men naar de kraamen <rhyme label="b" type="m">gaan</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En, voor de <rhyme label="a" type="f" corresp="#s2:l1">fraaijigheden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als ovens gaapen <rhyme label="b" type="m" corresp="#s2:l2">staan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wen maar de beurs van <rhyme label="a" type="f">schyven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Genoegzaam is <rhyme label="b" type="m">voorzien</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Aan Waar' zal 't niet <rhyme label="a" type="f" corresp="#s3:l1">ontbreken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die m' ons daar aan komt <rhyme label="b" type="m" corresp="#s3:l2">bien</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Men krygt 'er veele <rhyme label="a" type="f">zaaken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Pour quatre sous de <rhyme label="b" type="m">stuk</rhyme>!</l>
        <l id="s4:l3" met="3" type="-+">Men zit om <rhyme label="a" type="f" corresp="#s4:l1">kleinigheden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ook wel eens in den <rhyme label="b" type="m" corresp="#s4:l2">druk</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Men kan ook in de <rhyme label="a" type="f">ruimte</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van grooter <rhyme label="b" type="m">fraaijigheên</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Zich ryk'lyk zien <rhyme label="a" type="f" corresp="#s5:l1">gerieven</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Kan men maar geld <rhyme label="b" type="m" corresp="#s5:l2">besteen</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En niet slegts <rhyme label="a" type="f">pronkeryen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Alleen vind men te <rhyme label="b" type="m">koop</rhyme>¿</l>
        <l id="s6:l3" met="3" type="-+">Maar ook om 't lyf te <rhyme label="a" type="f" corresp="#s6:l1">vullen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Vind men me 'er by de <rhyme label="b" type="m" corresp="#s6:l2">hoop</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Veel koek en <rhyme label="a" type="f">lekkernyen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Ziet men ten toon <rhyme label="b" type="m">gesteld</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die m' allen kan <rhyme label="a" type="f" corresp="#s7:l1">genieten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ontbreekt 'er maar geen <rhyme label="b" type="m" corresp="#s7:l2">geld</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Men heeft 'er <rhyme label="a" type="f">Wafel-kraamen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Alwaar men met <rhyme label="b" type="m">vermaak</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Zyn mondje kan doen <rhyme label="a" type="f" corresp="#s8:l1">smullen</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">ô Welk een schoone <rhyme label="b" type="m" corresp="#s8:l2">zaak</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hoe witjes lacht het <rhyme label="a" type="f">Meisje</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Wen Zy, aan 's Minnaars <rhyme label="b" type="m">zy</rhyme>!</l>
        <l id="s9:l3" met="3" type="-+">Een wafeltje mag <rhyme label="a" type="f" corresp="#s9:l1">peuz'len</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Met rooden baai er <rhyme label="b" type="m" corresp="#s9:l2">by</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">En wil men minder <rhyme label="a" type="f">teeren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Een Poffertje-gaat ook <rhyme label="b" type="m">aan</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">Wat ziet men niet al <rhyme label="a" type="f" corresp="#s10:l1">kraamen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Van die Negotie <rhyme label="b" type="m" corresp="#s10:l2">staan</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Gaat gy door deze <rhyme label="a" type="f">ryen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Maak u dan maar niet <rhyme label="b" type="m">kwaad</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Als gy, door 't staêdig <rhyme label="a" type="f" corresp="#s11:l1">scheuren</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Wat van uw kleeren <rhyme label="b" type="m" corresp="#s11:l2">laat</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">'t Is vrienden! wilt wat <rhyme label="a" type="f">eeten</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En hier meê houd m' u <rhyme label="b" type="m">aan</rhyme>;</l>
        <l id="s12:l3" met="3" type="-+">Ja, nauwlyks zyt ge <rhyme label="a" type="f" corresp="#s12:l1">ontslagen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Of de ander doet u <rhyme label="b" type="m" corresp="#s12:l2">staan</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Verkiest men vreemde <rhyme label="a" type="f">kuuren</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Of wond te <rhyme label="b" type="m">kunst'nary</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Wil naar de spellen <rhyme label="a" type="f" corresp="#s13:l1">loopen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">M'ontvangt u wonder <rhyme label="b" type="m" corresp="#s13:l2">bly</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Hansworst toont daar zyn <rhyme label="a" type="f">grillen</rhyme></l>
        <l id="s14:l2" met="3" type="-+">En maakt een groot <rhyme label="b" type="m">rumoer</rhyme>;</l>
        <l id="s14:l3" met="3" type="-+">Ja, stelt zelfs, door zyn <rhyme label="a" type="f" corresp="#s14:l1">kuuren</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Het al in rep en <rhyme label="b" type="m" corresp="#s14:l2">roer</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Kom, Volkje kom maar <rhyme label="a" type="f">binnen</rhyme>!</l>
        <l id="s15:l2" met="3" type="-+">Roept hy met schor <rhyme label="b" type="m">geluid</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Terwyl men, onder 't <rhyme label="a" type="f" corresp="#s15:l1">schreeuwen</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Vast, speelt op trom en <rhyme label="b" type="m" corresp="#s15:l2">fluit</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Men ziet de <rhyme label="a" type="f">koordendansers</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Fluks springen op het <rhyme label="b" type="m">touw</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">En wonder <rhyme label="a" type="f" corresp="#s16:l1">balanceeren</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Zo wel door Man als <rhyme label="b" type="m" corresp="#s16:l2">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Ook heeft men hier Jan <rhyme label="a" type="f">Klaassen</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Die oude en raare <rhyme label="b" type="m">bol</rhyme>;</l>
        <l id="s17:l3" met="3" type="-+">Terwyl, Ioris en <rhyme label="a" type="f" corresp="#s17:l1">Tryntje</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Ook in de zak houd <rhyme label="b" type="m" corresp="#s17:l2">vol</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Ook Leeuwen Tygers, <rhyme label="a" type="f">Beeren</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">En ander vreemd <rhyme label="b" type="m">gediert'</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Doch gy hoeft niet te <rhyme label="a" type="f" corresp="#s18:l1">schroomen</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Hoe wreed 't gespuis ook <rhyme label="b" type="m" corresp="#s18:l2">tiert</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">En wil m' een dansje <rhyme label="a" type="f">hebbe</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Welaan, in <rhyme label="b" type="m">d'Olifant</rhyme></l>
        <l id="s19:l3" met="3" type="-+">Heeft men de speellui <rhyme label="a" type="f" corresp="#s19:l1">zitten</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Men danscht 'er naar den <rhyme label="b" type="m" corresp="#s19:l2">trant</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">De gevel, vol met <rhyme label="a" type="f">glazen</rhyme></l>
        <l id="s20:l2" met="3" type="-+">Behangen, is <rhyme label="b" type="m">verligt</rhyme>,</l>
        <l id="s20:l3" met="3" type="-+">Het geen aan andre <rhyme label="a" type="f" corresp="#s20:l1">huizen</rhyme>.</l>
        <l id="s20:l4" met="3" type="-+">Ook is met vreugd <rhyme label="b" type="m" corresp="#s20:l2">verricht</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Jaap, die ook vreugd wil <rhyme label="a" type="f">raapen</rhyme>,</l>
        <l id="s21:l2" met="3" type="-+">Ryt mede fluks naar <rhyme label="b" type="m">steê</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">Om 't Kermis feest te <rhyme label="a" type="f" corresp="#s21:l1">vieren</rhyme></l>
        <l id="s21:l4" met="3" type="-+">En neemt zyn Kniertje <rhyme label="b" type="m" corresp="#s21:l2">meê</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="3" type="-+">Hoe vrolyk lacht dit <rhyme label="a" type="f">paartje</rhyme></l>
        <l id="s22:l2" met="3" type="-+">Nu het de Kermis <rhyme label="b" type="m">ziet</rhyme>!</l>
        <l id="s22:l3" met="3" type="-+">Het hart springt op van <rhyme label="a" type="f" corresp="#s22:l1">vreugde</rhyme></l>
        <l id="s22:l4" met="3" type="-+">En 't denkt aan geen <rhyme label="b" type="m" corresp="#s22:l2">verdriet</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="3" type="-+">Het zwiert nu langs de <rhyme label="a" type="f">kramen</rhyme>,</l>
        <l id="s23:l2" met="3" type="-+">En kaauwt niet weinig <rhyme label="b" type="m">koek</rhyme>,</l>
        <l id="s23:l3" met="3" type="-+">Ja 't gaat ook waaf'len <rhyme label="a" type="f" corresp="#s23:l1">eeten</rhyme>,</l>
        <l id="s23:l4" met="3" type="-+">Het geld moet uit de <rhyme label="b" type="m" corresp="#s23:l2">broek</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="3" type="-+">En is men moê van 't <rhyme label="a" type="f">schransen</rhyme>,</l>
        <l id="s24:l2" met="3" type="-+">Dan naar het speelhuis <rhyme label="b" type="m">toe</rhyme>;</l>
        <l id="s24:l3" met="3" type="-+">Men danscht 'er om te <rhyme label="a" type="f" corresp="#s24:l1">scheuren</rhyme>,</l>
        <l id="s24:l4" met="3" type="-+">De Speelman zaagt hem <rhyme label="b" type="m" corresp="#s24:l2">moê</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="3" type="-+">Van den verroesten <rhyme label="a" type="f">Degen</rhyme>,</l>
        <l id="s25:l2" met="3" type="-+">En van koop Thee voorje <rhyme label="b" type="m">geld</rhyme>,</l>
        <l id="s25:l3" met="3" type="-+">En Jan koopt my een <rhyme label="a" type="f" corresp="#s25:l1">kermis</rhyme>,</l>
        <l id="s25:l4" met="3" type="-+">Word op de veel <rhyme label="b" type="m" corresp="#s25:l2">gesteld</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="3" type="-+">Dus leeft de Boer en Mensch <rhyme label="a" type="f">ook</rhyme></l>
        <l id="s26:l2" met="3" type="-+">Wanneer het Kermis <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s26:l3" met="3" type="-+">Of 't moest aan 't geld <rhyme label="a" type="f" corresp="#s26:l1">mankeeren</rhyme>,</l>
        <l id="s26:l4" met="3" type="-+">Want dan is alles <rhyme label="b" type="m" corresp="#s26:l2">mis</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
