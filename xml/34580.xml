  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">IN ons Dorpjen woont een <rhyme label="a" type="f">benghel</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Een verlaten Herders <rhyme label="b" type="m">soon</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die sy selven vindt soo <rhyme label="b" type="m" corresp="#s1:l2">schoon</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Als den uyt-gekeursten <rhyme label="a" type="f" corresp="#s1:l1">Enghel</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Hy gheeft lessen wonder <rhyme label="c" type="m">nut</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Daer-men synen rugghe <rhyme label="c" type="m" corresp="#s1:l5">snut</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hy beroemt sich dat de <rhyme label="a" type="f">Meysjens</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Op syn wesen syn <rhyme label="b" type="m">versot</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Maer syn redens hebben <rhyme label="b" type="m" corresp="#s2:l2">slot</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Soo als beste Moeders <rhyme label="a" type="f" corresp="#s2:l1">wysjens</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Want hy lessen gheeft heel <rhyme label="c" type="m">nut</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Daer-men synen rugghe <rhyme label="c" type="m" corresp="#s2:l5">snut</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Syne herssens zyn met <rhyme label="a" type="f">winden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Van de ydel waen <rhyme label="b" type="m">ghevult</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'t Gheen ghy dad'lyck mercken <rhyme label="b" type="m" corresp="#s3:l2">sult</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Als hy sal syn tongh' <rhyme label="a" type="f" corresp="#s3:l1">ontbinden</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Want hy lessen gheeft heel <rhyme label="c" type="m">nut</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Daer-men synen rugghe <rhyme label="c" type="m" corresp="#s3:l5">snut</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'k Weet wel dat in syn <rhyme label="a" type="f">gedachten</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Al de Meysjens staen van 't <rhyme label="b" type="m">durp</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Maer wat helpt hem dat <rhyme label="b" type="m" corresp="#s4:l2">bewurp</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Soo s' hem al ghelyc k <rhyme label="a" type="f" corresp="#s4:l1">verachten</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Want hy lessen gheeft heel <rhyme label="c" type="m">nut</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Daer-men synen rugghe <rhyme label="c" type="m" corresp="#s4:l5">snut</rhyme>.</l>
      </lg>
    </lg>
  </text>
