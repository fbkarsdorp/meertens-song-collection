    <melody>Ik zie de morgenster</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk sie die <rhyme label="a" type="f">morghensterr</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Heer God v claer <rhyme label="b" type="m">aenschijn</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Daer af ben ick so <rhyme label="a" type="f" corresp="#s1:l1">verre</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dies mach ick wel droeue <rhyme label="b" type="m" corresp="#s1:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wie is hi die daer <rhyme label="a" type="f">singhet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ende mi niet rusten en <rhyme label="b" type="m">laet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Mi dunct dat hi mi <rhyme label="a" type="f" corresp="#s2:l1">dwinghet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Te kennen mijn <rhyme label="b" type="m" corresp="#s2:l2">misdaet</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dat kben ick reden <rhyme label="a" type="f">koene</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ick hebt v langen tijt <rhyme label="b" type="m">gheseyt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dat ghi moet gheuen <rhyme label="a" type="f" corresp="#s3:l1">soene</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Al duncket v <rhyme label="b" type="m" corresp="#s3:l2">arbeyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Och reden laet dat <rhyme label="a" type="f">varen</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Ende en spreect daer niet meer <rhyme label="b" type="m">of</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Wilt God ick sal noch <rhyme label="a" type="f" corresp="#s4:l1">tiaren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wel quiten mijn <rhyme label="b" type="m" corresp="#s4:l2">belof</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Nature ghi beyt te <rhyme label="a" type="f">langhe</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dies ben ick seer <rhyme label="b" type="m">veruaert</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Want ons heeft in <rhyme label="a" type="f" corresp="#s5:l1">bedwange</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die doot die niemant en <rhyme label="b" type="m" corresp="#s5:l2">spaert</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Waer ic mi wende oft <rhyme label="a" type="f">keere</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Ghi en doet mi gheen <rhyme label="b" type="m">verdrach</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Altoos wilt ghi mi <rhyme label="a" type="f" corresp="#s6:l1">leeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Te laten dat ick <rhyme label="b" type="m" corresp="#s6:l2">plach</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Conde ic v daer toe <rhyme label="a" type="f">bringen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dat ghi wilde hooren na <rhyme label="b" type="m">mi</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Wij souden met vruechden <rhyme label="a" type="f" corresp="#s7:l1">singen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Een liet van minnen <rhyme label="b" type="m" corresp="#s7:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Den tijt is om <rhyme label="a" type="f">gheleden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Daer coemt mi sorghe <rhyme label="b" type="m">af</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Dat ic den tijt <rhyme label="a" type="f" corresp="#s8:l1">voerleden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Niet weder halen en <rhyme label="b" type="m" corresp="#s8:l2">mach</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dit sullen wi beclagen <rhyme label="a" type="f">seere</rhyme></l>
        <l id="s9:l2" met="3" type="-+">In onser herten <rhyme label="b" type="m">gront</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Dan sal God onse <rhyme label="a" type="f" corresp="#s9:l1">heere</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Sijn gratie ons maken <rhyme label="b" type="m" corresp="#s9:l2">cont</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
