<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>174636</id>
    <date>
      <year-start>1861</year-start>
      <year-end>1861</year-end>
    </date>
    <tags>
      <tag>children's song</tag>
    </tags>
    <melody>Ik heb een kleine kleine tuin</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ik heb een' kleinen, kleinen <rhyme label="a" type="m">tuin</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Daar kweek ik bloemen <rhyme label="b" type="m">in</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">En als mijn aardig zusje <rhyme label="c" type="m">komt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dan zing ik blij van <rhyme label="b" type="m" corresp="#s1:l2">zin</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">- ‘Klein kleuterke, klein <rhyme label="a" type="m">kleuterke</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Wat doet gij in mijn' <rhyme label="b" type="m">hof</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Gij plukt er al de bloemkens <rhyme label="c" type="m">af</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En maakt het veel te <rhyme label="b" type="m" corresp="#s2:l2">grof</rhyme>!’ -</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En als zij dan die plantjes <rhyme label="a" type="m">ziet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met zooveel zorg <rhyme label="b" type="m">gekweekt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dan wed ik, dat het lieve <rhyme label="c" type="m">kind</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Geen van de bloempjes <rhyme label="b" type="m" corresp="#s3:l2">breekt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
