<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>158727</id>
    <date>
      <year-start>1700</year-start>
      <year-end>1700</year-end>
    </date>
    <tags/>
    <melody>Biron</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Daer is mijn op een <rhyme label="a" type="m">tijd</rhyme></l>
        <l id="s1:l2" met="3" type="-+">een schoonder klugt <rhyme label="b" type="f">ontvreden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">O sekere Jonkmans <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">al door de stad <rhyme label="b" type="f" corresp="#s1:l2">getrede</rhyme></l>
        <l id="s1:l5" met="3" type="-+">O sekere Jonkmans <rhyme label="d" type="m">gaen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">al voor haer liefjes <rhyme label="e" type="m">deur</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Den eene met <rhyme label="f" type="m">gesang</rhyme></l>
        <l id="s1:l8" met="3" type="-+">den ander met <rhyme label="e" type="m" corresp="#s1:l6">getreur</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O boose domme <rhyme label="a" type="m">jeugt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">gaet gy nu van mijn <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Js dat de trouwe <rhyme label="c" type="m">deugd</rhyme></l>
        <l id="s2:l4" met="3" type="-+">die wy malkander <rhyme label="b" type="f" corresp="#s2:l2">seyde</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Gy zwoer als dat gy <rhyme label="d" type="m">zou</rhyme></l>
        <l id="s2:l6" met="3" type="-+">te winter wesen <rhyme label="e" type="m">groen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Waer zijt gy nu <rhyme label="f" type="m">eylaes</rhyme></l>
        <l id="s2:l8" met="3" type="-+">die mijn ontrou quam <rhyme label="e" type="m" corresp="#s2:l6">doen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Waer is u rooder <rhyme label="a" type="m">mont</rhyme></l>
        <l id="s3:l2" met="3" type="-+">die ik soo dikwils <rhyme label="b" type="f">kusten</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Waer zijn u borsjes <rhyme label="c" type="m">blank</rhyme></l>
        <l id="s3:l4" met="3" type="-+">daer ik op plag te <rhyme label="b" type="f" corresp="#s3:l2">rusten</rhyme>?</l>
        <l id="s3:l5" met="3" type="-+">Waer is u jonge <rhyme label="d" type="m">hert</rhyme></l>
        <l id="s3:l6" met="3" type="-+">daer ik in heb <rhyme label="e" type="m">gewoont</rhyme>?</l>
        <l id="s3:l7" met="3" type="-+">Waer zijt gy nu; <rhyme label="f" type="m">eylaes</rhyme>!</l>
        <l id="s3:l8" met="3" type="-+">die mijn met wreedheyd <rhyme label="e" type="m" corresp="#s3:l6">loont</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Adieu mijn Lief <rhyme label="a" type="m">minjoot</rhyme></l>
        <l id="s4:l2" met="3" type="-+">ik gae mijn laetste <rhyme label="b" type="f">gange</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Geeft mijn u trouwe <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s4:l4" met="3" type="-+">'k sal het mijne <rhyme label="b" type="f" corresp="#s4:l2">lange</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Jk gae zwerve voor u <rhyme label="d" type="m">deur</rhyme></l>
        <l id="s4:l6" met="3" type="-+">ik beken 't is mijn <rhyme label="e" type="m">schult</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Jk hoop dat gy mijn <rhyme label="f" type="m">dood</rhyme></l>
        <l id="s4:l8" met="3" type="-+">nog wel beklagen <rhyme label="e" type="m" corresp="#s4:l6">sult</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
