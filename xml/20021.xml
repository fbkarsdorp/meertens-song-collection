    <melody>Laatst was hier een reizer</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">GAntsch dat ’s eerst een <rhyme label="a" type="f">vrijster</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Sy singht als een <rhyme label="a" type="f" corresp="#s1:l1">Lijster</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Sy isser volmaeckt in <rhyme label="b" type="m">als</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Ia in ’t <rhyme label="c" type="f">courtiseren</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Als had sy ’t gaen <rhyme label="c" type="f" corresp="#s1:l4">leeren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Te Hove, by Schot of <rhyme label="b" type="m" corresp="#s1:l3">Wals</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Sy isser het <rhyme label="a" type="f">puyckje</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Ia ‘t Fisje uyt ’t <rhyme label="a" type="f" corresp="#s2:l1">Fuyckje</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Op d’oud’ <rhyme label="b" type="m">Achterburghwal</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Seer netjes en <rhyme label="c" type="f">fiertjes</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Trots alle de <rhyme label="c" type="f" corresp="#s2:l4">Diertjes</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In ’t geheele Hollants <rhyme label="b" type="m" corresp="#s2:l3">dal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Sy heefter veel <rhyme label="a" type="f">Vryers</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Maer weynigh <rhyme label="a" type="f" corresp="#s3:l1">bedyers</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sy scheyden daer haest weer <rhyme label="b" type="m">uyt</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Sy komen wat <rhyme label="c" type="f">praten</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Dan gaense <rhyme label="c" type="f" corresp="#s3:l4">verlaten</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Als sy meent sy is de <rhyme label="b" type="m" corresp="#s3:l3">Bruyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Het zijn vuyle <rhyme label="a" type="f">monden</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Die onlanghs soo <rhyme label="a" type="f" corresp="#s4:l1">schonden</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Die suyvere <rhyme label="b" type="m">Maeghde-Bloem</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Die icker met <rhyme label="c" type="f">eeren</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">(Doch sonder <rhyme label="c" type="f" corresp="#s4:l4">flatteren</rhyme>)</l>
        <l id="s4:l6" met="3" type="-+">Voor ’t puyckjen van d’ Amstel <rhyme label="b" type="m" corresp="#s4:l3">noem</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Haer volmaeckte <rhyme label="a" type="f">Leden</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Bevallijcke <rhyme label="a" type="f" corresp="#s5:l1">zeden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer meed sy ter werelt <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Die maecken dat <rhyme label="c" type="f">zy’er</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Niet simpel een <rhyme label="c" type="f" corresp="#s5:l4">Vryer</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Maer hondert-en-’t seventigh <rhyme label="b" type="m" corresp="#s5:l3">heeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Ten zijnder geen <rhyme label="a" type="f">Boertjes</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Geen Snyers, geen <rhyme label="a" type="f" corresp="#s6:l1">Loertjes</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Maer Koopluy en <rhyme label="b" type="m">Winckeliers</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Zy-Reders, <rhyme label="c" type="f">Boeck-binders</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Dat zijn haer <rhyme label="c" type="f" corresp="#s6:l4">beminders</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Oock Wijnverlaters, <rhyme label="b" type="m" corresp="#s6:l3">Barbiers</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Ach ’t is sulcken <rhyme label="a" type="f">Engel</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Daer ick steets nae <rhyme label="a" type="f" corresp="#s7:l1">hengel</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Als icker by avont <rhyme label="b" type="m">gae</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Ick loop voor haer <rhyme label="c" type="f">deurtje</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Ick kijck door het <rhyme label="c" type="f" corresp="#s7:l4">scheurtje</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Ick hem en sy volght my <rhyme label="b" type="m" corresp="#s7:l3">nae</rhyme>.</l>
      </lg>
    </lg>
  </text>
