  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NAtuer   ghy moeten oerlof <rhyme label="a" type="m">haen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">dat merke ic aenden <rhyme label="b" type="f">tyden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Die in den ewighen leuen <rhyme label="c" type="m">syn</rhyme></l>
        <l id="s1:l4" met="4" type="-+">die moeghen hem wal <rhyme label="b" type="f" corresp="#s1:l2">verblyen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die werlt is soe <rhyme label="a" type="m">bedrieghelic</rhyme></l>
        <l id="s2:l2" met="4" type="-+">in hoer en is gheene <rhyme label="b" type="f">trouwe</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Die in swaren sunden <rhyme label="c" type="m">licht</rhyme></l>
        <l id="s2:l4" met="4" type="-+">die mach sich wal <rhyme label="b" type="f" corresp="#s2:l2">berouwen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">My ontboet een enghel <rhyme label="a" type="m">guet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">dat ic moeste <rhyme label="b" type="f">steruen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">ende laten al verganlic <rhyme label="c" type="m">guet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">in deser eerden <rhyme label="b" type="f" corresp="#s3:l2">deruen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ende ic ontboet hem <rhyme label="a" type="m">weder</rhyme></l>
        <l id="s4:l2" met="4" type="-+">hij moest een weynich <rhyme label="b" type="f">beyden</rhyme></l>
        <l id="s4:l3" met="4" type="-+">myne sunden weren alsoe <rhyme label="c" type="m">swaer</rhyme></l>
        <l id="s4:l4" met="4" type="-+">ic moeste my noch bet <rhyme label="b" type="f" corresp="#s4:l2">bereyden</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doe dat anden auent <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s5:l2" met="4" type="-+">natuer began toe <rhyme label="b" type="f">trueren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">wat vant sie in hohoren    weghen <rhyme label="c" type="m">staen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">ihesus van <rhyme label="b" type="f" corresp="#s5:l2">nasarenen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Och ihesus alte liefste <rhyme label="a" type="m">lief</rhyme></l>
        <l id="s6:l2" met="4" type="-+">ende waer sal ic di <rhyme label="b" type="f">vinden</rhyme></l>
        <l id="s6:l3" met="4" type="-+">dat salstu in die armoede <rhyme label="c" type="m">doen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">ende in dat swaer <rhyme label="b" type="f" corresp="#s6:l2">ellende</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ende doe sie in dat ellende <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s7:l2" met="4" type="-+">wat gaf hi ha   hoer toe <rhyme label="b" type="f">lone</rhyme></l>
        <l id="s7:l3" met="4" type="-+">hy voerden sie in syns vaders <rhyme label="c" type="m">lant</rhyme></l>
        <l id="s7:l4" met="4" type="-+">hy spande hoer eene vergulden <rhyme label="b" type="f" corresp="#s7:l2">croene</rhyme></l>
      </lg>
    </lg>
  </text>
