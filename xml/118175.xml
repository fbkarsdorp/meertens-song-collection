  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAerom is 't dat gy uw' <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Buyten u, onrustig <rhyme label="b" type="m">maekt</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Daer 't dog meer vermaekt en <rhyme label="b" type="m" corresp="#s1:l2">smaekt</rhyme></l>
        <l id="s1:l4" met="4" type="+-">In zijn opregt herte <rhyme label="a" type="f" corresp="#s1:l1">binnen</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Steeds te neemen zijn <rhyme label="c" type="m">vertrek</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Datmen houd aldaer <rhyme label="c" type="m" corresp="#s1:l5">gesprek</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Laet veel schrik en <rhyme label="a" type="f">achterdenken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Quellen een bewroegt <rhyme label="b" type="m">gemoet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Maer die steeds het goede <rhyme label="b" type="m" corresp="#s2:l2">doet</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hoeft sich daer niet mee te <rhyme label="a" type="f" corresp="#s2:l1">krenken</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Mits sijn eygen goet <rhyme label="c" type="m">gewiss'</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Allenthalven by hem <rhyme label="c" type="m" corresp="#s2:l5">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Goet gewiss' kan <rhyme label="a" type="f">nederslechten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Wat sich tegen haer stelt <rhyme label="b" type="m">op</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Onvertsaegt en hoog in <rhyme label="b" type="m" corresp="#s3:l2">top</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Mach d'opregt'heit 't hooft <rhyme label="a" type="f" corresp="#s3:l1">opregten</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En door alle laster <rhyme label="c" type="m">heen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Vast op hooge schoenen <rhyme label="c" type="m" corresp="#s3:l5">treen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laet de Satan heele <rhyme label="a" type="f">troepen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">t'Saem door linkerny <rhyme label="b" type="m">verwoed</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Tegen een opregt <rhyme label="b" type="m" corresp="#s4:l2">gemoed</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Met gewelt te hulpe <rhyme label="a" type="f" corresp="#s4:l1">roepen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Niemant is'er die het <rhyme label="c" type="m">deert</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">Want het slecht hem selfs <rhyme label="c" type="m" corresp="#s4:l5">verweert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Schoon uw woort of werk <rhyme label="a" type="f">by-wijlen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Een verkeerden uyt-leg <rhyme label="b" type="m">lijt</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Door onwetenheit of <rhyme label="b" type="m" corresp="#s5:l2">spijt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Kan en moet in aller <rhyme label="a" type="f" corresp="#s5:l1">ylen</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Eygen sin en meining <rhyme label="c" type="m">doch</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Zijn de rechte gloser <rhyme label="c" type="m" corresp="#s5:l5">noch</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ja gelijk de <rhyme label="a" type="f">middag-stralen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Sal doch uw <rhyme label="b" type="m">geregtigheit</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Door haer luister zijn <rhyme label="b" type="m" corresp="#s6:l2">verspreit</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">'t Goet gewiss' moet <rhyme label="a" type="f" corresp="#s6:l1">zege-pralen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Dat het alles onder <rhyme label="c" type="m">legt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Wat haer immermeer <rhyme label="c" type="m" corresp="#s6:l5">bevegt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wel-gesette Christen <rhyme label="a" type="f">zielen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Zijn gelijk een sterke <rhyme label="b" type="m">rots</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Die geen buyen, dul en <rhyme label="b" type="m" corresp="#s7:l2">trots</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Ooit versetten, of <rhyme label="a" type="f" corresp="#s7:l1">vernielen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Die de schuym'ge <rhyme label="c" type="m">watervloet</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Maer te meerder wassen <rhyme label="c" type="m" corresp="#s7:l5">doet</rhyme>.</l>
      </lg>
    </lg>
  </text>
