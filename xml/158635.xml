    <tags/>
    <melody>De winter is vergangen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ghy Weeukens wilt Godt <rhyme label="a" type="f">behaghen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In uwen weeuwelijcken <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En wijselijck wilt <rhyme label="a" type="f" corresp="#s1:l1">verjaghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Alle ydel’ manieren <rhyme label="b" type="m" corresp="#s1:l2">quaet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Neerstich wacht u van <rhyme label="c" type="f">praten</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Paulus is u een <rhyme label="d" type="m">Medecijn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Loopt niet veel by der <rhyme label="c" type="f" corresp="#s1:l5">straten</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wildy oprechte weduwen <rhyme label="d" type="m" corresp="#s1:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Is uwen Man <rhyme label="a" type="f">overleden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Slacht de wijse Iudith <rhyme label="b" type="m">jent</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Begheeft u tot <rhyme label="a" type="f" corresp="#s2:l1">eensaemheden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In u bidt-kamer <rhyme label="b" type="m" corresp="#s2:l2">excellent</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wilt niet van ydelheyt <rhyme label="c" type="f">spreecken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Godts gratie neemt in <rhyme label="d" type="m">waer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">V passien doch wilt <rhyme label="c" type="f" corresp="#s2:l5">breecken</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Wilt ghy zijn als Weduwen <rhyme label="d" type="m" corresp="#s2:l6">claer</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Met vasten ende <rhyme label="a" type="f">waecken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Straft u natuer <rhyme label="b" type="m">rebel</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Na soberheyt wilt <rhyme label="a" type="f" corresp="#s3:l1">haecken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Laet brasserye <rhyme label="b" type="m" corresp="#s3:l2">fel</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Anna de <rhyme label="c" type="f">Prophetersse</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Schoude die als <rhyme label="d" type="m">fenijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">De goede <rhyme label="c" type="f" corresp="#s3:l5">Matronersse</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Sal u een Spieghel <rhyme label="d" type="m" corresp="#s3:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als Elisabeth weest <rhyme label="a" type="f">ootmoedigh</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Denckt hoe sy heeft <rhyme label="b" type="m">gheleeft</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sy was niet <rhyme label="a" type="f" corresp="#s4:l1">hoochmoedich</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Siet wat exempel sy <rhyme label="b" type="m" corresp="#s4:l2">gheeft</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Volght ghy haer deught <rhyme label="c" type="f">ghepresen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ghy sult ontfaen <rhyme label="d" type="m">sestichfout</rhyme></l>
        <l id="s4:l7" met="3" type="-+">V Wooning’ sal hier na <rhyme label="c" type="f" corresp="#s4:l5">wesen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Daer de straten zijn van <rhyme label="d" type="m" corresp="#s4:l6">gout</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De suyverheyt wilt <rhyme label="a" type="f">beminnen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Recht of ghy waert een <rhyme label="b" type="m">maeght</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Soeckt in u hert van <rhyme label="a" type="f" corresp="#s5:l1">binnen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Hem die de suyverheyt <rhyme label="b" type="m" corresp="#s5:l2">behaeght</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ghy moet hem draghen <rhyme label="c" type="f">alleyne</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En dienen met liefd’ en <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">V beddeken moet zijn <rhyme label="c" type="f" corresp="#s5:l5">reyne</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Daer den Bruydegom op <rhyme label="d" type="m" corresp="#s5:l6">rust</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Princesse wilt <rhyme label="a" type="f">onderhouwen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Desen staet die is u <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En wilt geen Man meer <rhyme label="a" type="f" corresp="#s6:l1">trouwen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Let wat de Tortel-duyve <rhyme label="b" type="m" corresp="#s6:l2">doet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Nae haer gaeykens treurich <rhyme label="c" type="f">af-lijven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Sy en kiest gheen ander <rhyme label="d" type="m">weer</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Alsoo wilt oock <rhyme label="c" type="f" corresp="#s6:l5">aenclijven</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Den Bruydegom Godt den <rhyme label="d" type="m" corresp="#s6:l6">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
