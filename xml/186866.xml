<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186866</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody>O jammer en ellende</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Myn' lieve Mietje, ziet ik <rhyme label="a" type="m">slyt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Warentig in verdriet myn <rhyme label="a" type="m" corresp="#s1:l1">tyd</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Ik ga ten oorlog <rhyme label="b" type="f">vaeren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En Engelands verwaende <rhyme label="a" type="m" corresp="#s1:l1">nyd</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Met Kruid en Lood <rhyme label="b" type="f" corresp="#s1:l3">bedaeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoeveel een Engelsman <rhyme label="a" type="m">geniet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hy gunt ons 't Licht in de oogen <rhyme label="a" type="m" corresp="#s2:l1">niet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En wil ons leevend <rhyme label="b" type="f">villen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Om dat wy nu het zwaer <rhyme label="a" type="m" corresp="#s2:l1">verdriet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Niet meer verdraegen <rhyme label="b" type="f" corresp="#s2:l3">willen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'t Geduld van onzen Staat is <rhyme label="a" type="m">uit</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die daerom ook een <rhyme label="a" type="m" corresp="#s3:l1">krygsbesluit</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Met Wysheid heeft <rhyme label="b" type="f">gebomen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Gaat nu dat volk op roof en <rhyme label="a" type="m" corresp="#s3:l1">buit</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Hoe zal het hun <rhyme label="b" type="f" corresp="#s3:l3">bekomen</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een Batavier is ruim zo <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Als drie van 't Engelsche <rhyme label="a" type="m" corresp="#s4:l1">gebroet</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Het koome maar tot <rhyme label="b" type="f">vegtea</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Onze onverschrokken <rhyme label="a" type="m" corresp="#s4:l1">leeuwenmoed</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Zal dan 't geschil <rhyme label="b" type="f" corresp="#s4:l3">beslechten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Heer Hartsinck, die als <rhyme label="a" type="m">Admiraal</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Aan onze vloot de groorste <rhyme label="a" type="m" corresp="#s5:l1">prael</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Door zyne vlag moet <rhyme label="b" type="f">geeven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Voert forsch een onverwinlyk <rhyme label="a" type="m" corresp="#s5:l1">stael</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat Londen zal doen <rhyme label="b" type="f" corresp="#s5:l3">beeven</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Kingsbergen zal met groot <rhyme label="a" type="m">vermaak</rhyme></l>
        <l id="s6:l2" met="4" type="-+">In 's Vaderlands gerechte <rhyme label="a" type="m" corresp="#s6:l1">zaak</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Het zy van daag of <rhyme label="b" type="f">morgen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Een billyke en volkome <rhyme label="a" type="m" corresp="#s6:l1">wraak</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Gewis, aan ons <rhyme label="b" type="f" corresp="#s6:l3">bezorgen</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nog meerder Helden heeft den <rhyme label="a" type="m">Staat</rhyme>.</l>
        <l id="s7:l2" met="4" type="-+">Die onvermoeid haar <rhyme label="a" type="m" corresp="#s7:l1">levensdraad</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Voor 't Land opofferen <rhyme label="b" type="f">willen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Gelyk Piet Hein het leeven <rhyme label="a" type="m" corresp="#s7:l1">laat</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Om 's Vyand haat te <rhyme label="b" type="f" corresp="#s7:l3">stillen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Myn braave Dedel, de <rhyme label="a" type="m">oorlogsheld</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Leeft enkel op het <rhyme label="a" type="m" corresp="#s8:l1">waterveld</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En tart de dolste <rhyme label="b" type="f">rampen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Zyn zinnen zyn alleen <rhyme label="a" type="m" corresp="#s8:l1">gesteld</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Om maar aan boord te <rhyme label="b" type="f" corresp="#s8:l3">klampen</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">En 't Land heeft nog een grooter <rhyme label="a" type="m">drom</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Van helden, die by de <rhyme label="a" type="m" corresp="#s9:l1">Oorlogstrom</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Niet weeten van <rhyme label="b" type="f">verouden</rhyme>;</l>
        <l id="s9:l4" met="4" type="-+">Maer by des vyands kruid en <rhyme label="a" type="m" corresp="#s9:l1">bom</rhyme></l>
        <l id="s9:l5" met="3" type="-+">De Ruiters voetspoor <rhyme label="b" type="f" corresp="#s9:l3">houden</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Vaa wel Marie, de trommel <rhyme label="a" type="m">slaat</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Geef my den Rok van onze <rhyme label="a" type="m" corresp="#s10:l1">Staat</rhyme>;</l>
        <l id="s10:l3" met="3" type="-+">Gy moet in 't minst niet <rhyme label="b" type="f">schroome</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">'k Hoop morgen voor den dagen <rhyme label="a" type="m" corresp="#s10:l1">raad</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Aan 't lieven boord te <rhyme label="b" type="f" corresp="#s10:l3">koomen</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Voor onze waardige <rhyme label="a" type="m">Overbeid</rhyme>,,</l>
        <l id="s11:l2" met="4" type="-+">Wiens vaderlyk en wys <rhyme label="a" type="m" corresp="#s11:l1">beleid</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">Alle Amsterdammers <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Ga ik gewillig en <rhyme label="a" type="m" corresp="#s11:l1">bereid</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Met vuur en zwaard <rhyme label="b" type="f" corresp="#s11:l3">braveren</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>
