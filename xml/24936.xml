  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ich clage dir, zure winter <rhyme label="a" type="m">calt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Das mir ein wijf doyt grois <rhyme label="a" type="m" corresp="#s1:l1">gewalt</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Ich werde in cortzin ziden <rhyme label="a" type="m" corresp="#s1:l1">alt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Helpes mer nicht <rhyme label="b" type="f">wenden</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Ich bidde uch, wilde <rhyme label="c" type="m">vogelin</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Das ir laest uwer(r) singen <rhyme label="c" type="m" corresp="#s1:l5">zin</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">So wer vro daz hertze <rhyme label="c" type="m" corresp="#s1:l5">min</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Mucht ich ir vrude <rhyme label="b" type="f" corresp="#s1:l4">penden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Tze winde zets ich minen <rhyme label="a" type="m">zin</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Of daz he veye in ir <rhyme label="a" type="m" corresp="#s2:l1">anschin</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Daz beyde ir wengelin und <rhyme label="a" type="m" corresp="#s2:l1">kin</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van verwen gar <rhyme label="b" type="f">verzwinden</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Bas an iren roeter <rhyme label="c" type="m">mont</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die ye so vrintlichen <rhyme label="c" type="m" corresp="#s2:l5">stont</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Midden in mins hertzin <rhyme label="c" type="m" corresp="#s2:l5">gront</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ich diende yr ye van <rhyme label="b" type="f" corresp="#s2:l4">kinde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O du zomergroene <rhyme label="a" type="m">plain</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Du salt van mire vrouwen <rhyme label="a" type="m" corresp="#s3:l1">staen</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Se hait mer alzo <rhyme label="a" type="m" corresp="#s3:l1">mesdaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Das ich ir scade wil <rhyme label="b" type="f">meeren</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Orlof, vrou min, ho <rhyme label="c" type="m">geboren</rhyme>!</l>
        <l id="s3:l6" met="4" type="-+">Goet dienst blijft an uch <rhyme label="c" type="m" corresp="#s3:l5">verloren</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Des moist ir, winter, uren <rhyme label="c" type="m" corresp="#s3:l5">tzorn</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Tze mire vrouwen <rhyme label="b" type="f" corresp="#s3:l4">keren</rhyme>.</l>
      </lg>
    </lg>
  </text>
