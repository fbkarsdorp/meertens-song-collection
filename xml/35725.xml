    <melody>Ik zucht zucht op zucht</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">U Droefheydt minst en <rhyme label="a" type="m">meest</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Set heden aen een <rhyme label="b" type="f">zijde</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">In 't alderblijdste <rhyme label="a" type="m" corresp="#s1:l1">feest</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt mede u <rhyme label="b" type="f" corresp="#s1:l2">verblijde</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Chritus met ziel en <rhyme label="c" type="f">leden</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Met sijn verloste <rhyme label="d" type="m">schaer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Klimpt op na 's Hemels <rhyme label="c" type="f" corresp="#s1:l5">steden</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Glorieus ende <rhyme label="d" type="m" corresp="#s1:l6">klaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy is soo milt en <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat hy voor kleyn en <rhyme label="b" type="f">grooten</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ontsluyt, en open <rhyme label="a" type="m" corresp="#s2:l1">doet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">'s Hemels deur langh <rhyme label="b" type="f" corresp="#s2:l2">geslooten</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Aen sijn vergramde <rhyme label="c" type="f">Vader</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hy toont sijn wonden <rhyme label="d" type="m">vijf</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Versoent ons <rhyme label="c" type="f" corresp="#s2:l5">allegader</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Krijght peys tot ons <rhyme label="d" type="m" corresp="#s2:l6">gerijf</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Voor ons een plaets <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In 's Hemels hof <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Gelijck hy heeft <rhyme label="a" type="m" corresp="#s3:l1">gezeyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In 't eynde van sijn <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Belooft ons soo wy <rhyme label="c" type="f">lezen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">By Sint Ian <rhyme label="d" type="m">allegaer</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Alwaer dat ick sal <rhyme label="c" type="f" corresp="#s3:l5">wezen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Zal wesen mijn <rhyme label="d" type="m" corresp="#s3:l6">Dienaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Door d'eerste Adams <rhyme label="a" type="m">val</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Tot niet zijn wy <rhyme label="b" type="f">gedreven</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Christus heeft ons weer <rhyme label="a" type="m" corresp="#s4:l1">al</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Tot hooger staet <rhyme label="b" type="f" corresp="#s4:l2">verheven</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Als wy hebben <rhyme label="c" type="f">verlooren</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Hy geeft ons beter <rhyme label="d" type="m">spijs</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Als wy hadden te <rhyme label="c" type="f" corresp="#s4:l5">vooren</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En schoonder <rhyme label="d" type="m" corresp="#s4:l6">Paradijs</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gelijck een Kloek-hen <rhyme label="a" type="m">trouw</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Uyt-spreyt zijn liefde <rhyme label="b" type="f">ermen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Om ons in onse <rhyme label="a" type="m" corresp="#s5:l1">rouw</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Te hoeden en <rhyme label="b" type="f" corresp="#s5:l2">t'ontfermen</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Sijn Hemelsche <rhyme label="c" type="f">Iuweelen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die hy in 's hemels <rhyme label="d" type="m">velt</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Vint, sal hy ons mee <rhyme label="c" type="f" corresp="#s5:l5">deelen</rhyme>;</l>
        <l id="s5:l8" met="3" type="-+">En ons voor oogen <rhyme label="d" type="m" corresp="#s5:l6">stelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Al vlieght dees Arent <rhyme label="a" type="m">hoogh</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Boven al 's hemels <rhyme label="b" type="f">zalen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Op ons houdt sijnen <rhyme label="a" type="m" corresp="#s6:l1">oogh</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hy laet geen mantel <rhyme label="b" type="f" corresp="#s6:l2">dalen</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Gelijck Elias <rhyme label="c" type="f">dede</rhyme>;</l>
        <l id="s6:l6" met="3" type="-+">Maer sijn heylige <rhyme label="d" type="m">Gheest</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Na dagen thien van <rhyme label="c" type="f" corresp="#s6:l5">heden</rhyme>;</l>
        <l id="s6:l8" met="3" type="-+">Tot spijt van 't helsche <rhyme label="d" type="m" corresp="#s6:l6">beest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Mijn Godt, mijn Al, mijn <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt my dees liefde <rhyme label="b" type="f">toonen</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Laet 't hart (na u <rhyme label="a" type="m" corresp="#s7:l1">begeer</rhyme>)</l>
        <l id="s7:l4" met="3" type="-+">Van mijn in d'hemel <rhyme label="b" type="f" corresp="#s7:l2">woonen</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Wilt my ootmoedigh <rhyme label="c" type="f">maken</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Gehoorsaem tot de <rhyme label="d" type="m">doodt</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Laet my uw' vreughden <rhyme label="c" type="f" corresp="#s7:l5">smaken</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Daer na, en zoetheyt <rhyme label="d" type="m" corresp="#s7:l6">groot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
