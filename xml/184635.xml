    <melody>Le seigneur du ciel veut qu' on s'engage</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">MEnschen syt verheught, dien tydt gaet <rhyme label="a" type="f">naeken</rhyme>,</l>
        <l id="s1:l2" met="5" type="+-">Die ons trecken sal uyt <rhyme label="b" type="m">slaeverny</rhyme>;</l>
        <l id="s1:l3" met="5" type="+-">Gy sult haest aen uwen wensch <rhyme label="a" type="f" corresp="#s1:l1">geraeken</rhyme>,</l>
        <l id="s1:l4" met="5" type="+-">Als Messias ons sal maeken <rhyme label="b" type="m" corresp="#s1:l2">vry</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Den Hemel, <rhyme label="c" type="f">ontsteken</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Om Adams sond' te <rhyme label="c" type="f" corresp="#s1:l5">vreken</rhyme>,</l>
        <l id="s1:l7" met="5" type="+-">Sal door Godt versoent syn t'allen <rhyme label="d" type="m">ty'</rhyme>:</l>
        <l id="s1:l8" met="3" type="-+">De lanck gewenschte <rhyme label="e" type="m">baen</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Sal weder <rhyme label="e" type="m" corresp="#s1:l8">open-gaen</rhyme>,</l>
        <l id="s1:l10" met="6" type="-+">De wereldt sien sal s'Hemels poorten <rhyme label="e" type="m" corresp="#s1:l8">open-staen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">d'Helle sal de waepens <rhyme label="a" type="f">wedergeven</rhyme>,</l>
        <l id="s2:l2" met="5" type="+-">Alles sal versoent syn door een <rhyme label="b" type="m">kindt</rhyme>;</l>
        <l id="s2:l3" met="5" type="+-">Voor hem sullen d'helsche geesten <rhyme label="a" type="f" corresp="#s2:l1">beven</rhyme>,</l>
        <l id="s2:l4" met="5" type="+-">Als de wereldt soo sal syn <rhyme label="b" type="m" corresp="#s2:l2">bemindt</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Het kindt sal de <rhyme label="c" type="f">suchten</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Uyt menschens hert doen <rhyme label="c" type="f" corresp="#s2:l5">vluchten</rhyme>,</l>
        <l id="s2:l7" met="5" type="+-">Godts verbondt sal staen in ons <rhyme label="d" type="m">geprint</rhyme>.</l>
        <l id="s2:l8" met="3" type="-+">Den vrede van den <rhyme label="e" type="m">Heer</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Sal met syn Heyligh' <rhyme label="e" type="m" corresp="#s2:l8">Leer</rhyme></l>
        <l id="s2:l10" met="6" type="-+">Doen groeyen syne grati' in ons meer en <rhyme label="e" type="m" corresp="#s2:l8">meer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Wegh de droefheydt, die hier voor <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s3:l2" met="5" type="+-">Laet ons vreught syn van nu af <rhyme label="b" type="m">bekent</rhyme>:</l>
        <l id="s3:l3" met="5" type="+-">Onse vreught sal d'hel een pyne <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme>,</l>
        <l id="s3:l4" met="5" type="+-">En den duyvel syn een nieuw <rhyme label="b" type="m" corresp="#s3:l2">torment</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Naer al ons <rhyme label="c" type="f">verlangen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Laet klincken uwe <rhyme label="c" type="f" corresp="#s3:l5">sangen</rhyme>,</l>
        <l id="s3:l7" met="5" type="+-">Helschen nydt, gy ons niet meer en <rhyme label="d" type="m">schendt</rhyme>;</l>
        <l id="s3:l8" met="3" type="-+">Voor Godts <rhyme label="e" type="m">Rechtveerdigheydt</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Komt syn <rhyme label="e" type="m" corresp="#s3:l8">Bermhertigheydt</rhyme>,</l>
        <l id="s3:l10" met="6" type="-+">Tot vyandts spyt komt ons geluck voor <rhyme label="e" type="m" corresp="#s3:l8">eeuwigheydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Maer bereydt te vooren wel uw' <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s4:l2" met="5" type="+-">Om t'ontfangen uwen Godt van <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s4:l3" met="5" type="+-">En hem uytter herten te <rhyme label="a" type="f" corresp="#s4:l1">beminnen</rhyme>,</l>
        <l id="s4:l4" met="5" type="+-">Die sy selven heel u geven <rhyme label="b" type="m" corresp="#s4:l2">sal</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Laet alles dan <rhyme label="c" type="f">wycken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Om liefde te doen <rhyme label="c" type="f" corresp="#s4:l5">blycken</rhyme>,</l>
        <l id="s4:l7" met="5" type="+-">Voor die liggen sal in eenen <rhyme label="d" type="m">Stal</rhyme>:</l>
        <l id="s4:l8" met="3" type="-+">Hy door een <rhyme label="e" type="m">liefde-bandt</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Brenght-weder onsen <rhyme label="e" type="m" corresp="#s4:l8">pandt</rhyme>:</l>
        <l id="s4:l10" met="6" type="-+">Maeckt, liefde, dat gy dan blaekt in eenen vollen <rhyme label="e" type="m" corresp="#s4:l8">brandt</rhyme>.</l>
      </lg>
    </lg>
