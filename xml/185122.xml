<song>
  <meta>
    <id>185122</id>
    <date>
      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>de rijp</orginal-name>
      <standard-name>De Rijp, The Netherlands</standard-name>
      <coordinates>
        <lon>52.5548999</lon>
        <lat>4.8440884</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Te mei als alle vogels zingen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Haeckt na den vreed’ by alle <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En nae de heylighmakingh <rhyme label="a" type="m" corresp="#s1:l1">dan</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Want sonder dese <rhyme label="b" type="f">deughden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Niemant den Heere sien en <rhyme label="a" type="m" corresp="#s1:l1">can</rhyme></l>
        <l id="s1:l5" met="4" type="-+">In heerelijcker <rhyme label="b" type="f" corresp="#s1:l3">vreughden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ist moghelijck en in u <rhyme label="a" type="m">macht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hebt vrede, liefde, en <rhyme label="a" type="m" corresp="#s2:l1">eendracht</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Altijdt met alle <rhyme label="b" type="f">menschen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Van uwer zyden daer nae <rhyme label="a" type="m" corresp="#s2:l1">tracht</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Met hopen, bidden, <rhyme label="b" type="f" corresp="#s2:l3">wenschen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den vrede is den eersten <rhyme label="a" type="m">groet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die Christus syne Ionghers <rhyme label="a" type="m" corresp="#s3:l1">doet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Nae zijn heerlijck <rhyme label="b" type="f">verrysen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die Boden zijn lieflijck en <rhyme label="a" type="m" corresp="#s3:l1">soet</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die ons den vrede <rhyme label="b" type="f" corresp="#s3:l3">prysen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den vrede dat is soo goeden <rhyme label="a" type="m">pant</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Sy gaet te boven alle <rhyme label="a" type="m" corresp="#s4:l1">verstant</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Saligh sullen sy <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die door desen heylsamen <rhyme label="a" type="m" corresp="#s4:l1">bant</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">‘t Ghekroockte riet <rhyme label="b" type="f" corresp="#s4:l3">ghenesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wil yemant met u voeren <rhyme label="a" type="m">twist</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">V dierbaer tijdt niet en <rhyme label="a" type="m" corresp="#s5:l1">ferquist</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Met sulcken mensch te <rhyme label="b" type="f">kyven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">By Godts volck gheen manier en <rhyme label="a" type="m" corresp="#s5:l1">ist</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Sy moeten vreed’saem <rhyme label="b" type="f" corresp="#s5:l3">blyven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer vraegt u yemant weest <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">‘t Antwoorden met <rhyme label="a" type="m" corresp="#s6:l1">sachtmoedigheyt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En wel bedachte <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Vliet van eyghen <rhyme label="a" type="m" corresp="#s6:l1">gherechtigheyt</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Laet waerheyd altijdt <rhyme label="b" type="f" corresp="#s6:l3">winnen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wat isser menigh leet <rhyme label="a" type="m">gheschiet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Wat isser menigh groot <rhyme label="a" type="m" corresp="#s7:l1">verdriet</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Door ‘t hebbe-recht <rhyme label="b" type="f">ghecomen</rhyme>?</l>
        <l id="s7:l4" met="4" type="-+">Alsmen het stuck wel <rhyme label="a" type="m" corresp="#s7:l1">oversiet</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">‘t Schaemt hem by alle <rhyme label="b" type="f" corresp="#s7:l3">vromen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Elc heeft zijn goet-dunckent <rhyme label="a" type="m">verstant</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Als een nootsake <rhyme label="a" type="m" corresp="#s8:l1">ingheplant</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Het volck van sijn <rhyme label="b" type="f">humeuren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En maeckten op haer eyghen <rhyme label="a" type="m" corresp="#s8:l1">hant</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Soo veel bedroefde <rhyme label="b" type="f" corresp="#s8:l3">scheuren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sy hebben menigh hert <rhyme label="a" type="m">bedroeft</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En haer opiny <rhyme label="a" type="m" corresp="#s9:l1">in-gegroeft</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Daer minst is <rhyme label="b" type="f">aengheleghen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En ‘t ghene datter meest <rhyme label="a" type="m" corresp="#s9:l1">behoeft</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Hebben sy minst <rhyme label="b" type="f" corresp="#s9:l3">gheweghen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dat’s vrede, liefd’ en <rhyme label="a" type="m">eenigheyt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Oprechte waer’ <rhyme label="a" type="m" corresp="#s10:l1">ootmoedigheyt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Afstervinghe van <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Op dat de ziel in <rhyme label="a" type="m" corresp="#s10:l1">heyligheyt</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Onstraflijck sy <rhyme label="b" type="f" corresp="#s10:l3">bevonden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Door dese oorsaeck ist <rhyme label="a" type="m">ghebeurt</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Dat men so weynigh menschen <rhyme label="a" type="m" corresp="#s11:l1">speurt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Die Godes liefde <rhyme label="b" type="f">smaken</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Den tijdt die wert <rhyme label="a" type="m" corresp="#s11:l1">verteureleurt</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">In onnoodighe <rhyme label="b" type="f" corresp="#s11:l3">saken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Alleen niet in twistigh <rhyme label="a" type="m">confuys</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Maer oock in ‘t al ghemeen <rhyme label="a" type="m" corresp="#s12:l1">gedruys</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Sy met de werelt <rhyme label="b" type="f">wennen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Sy soecken weeld’ en vlieden ‘t <rhyme label="a" type="m" corresp="#s12:l1">cruys</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Gods vreed’ sy niet en <rhyme label="b" type="f" corresp="#s12:l3">kennen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Want soo de Herders voren <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">De schaepkens geerne volghen <rhyme label="a" type="m" corresp="#s13:l1">aen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Willen de Herders <rhyme label="b" type="f">scheuren</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">d’Een gaet wel mee, d’anders blijst <rhyme label="a" type="m" corresp="#s13:l1">staen</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Met suchten ende <rhyme label="b" type="f" corresp="#s13:l3">treuren</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">‘t En sijn geen goede Herders <rhyme label="a" type="m">trou</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Die weynigh achten op den <rhyme label="a" type="m" corresp="#s14:l1">rou</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Van haer onnoosel <rhyme label="b" type="f">schapen</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Waren de Herders vredigh, ‘t <rhyme label="a" type="m" corresp="#s14:l1">sou</rhyme></l>
        <l id="s14:l5" met="4" type="-+">Niet langh dus blyven <rhyme label="b" type="f" corresp="#s14:l3">slapen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Eylaes de schaepkens Christi <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Sy trecken altijdt eenen <rhyme label="a" type="m" corresp="#s15:l1">lijn</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Oft schoon de Herders <rhyme label="b" type="f">kyven</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Sy connen niet ghescheyden <rhyme label="a" type="m" corresp="#s15:l1">sijn</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Haer hert moet eenigh <rhyme label="b" type="f" corresp="#s15:l3">blyven</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Gheen Herder vreemt haer dit <rhyme label="a" type="m">belet</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Haer liefde hebben sy <rhyme label="a" type="m" corresp="#s16:l1">gheset</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Op haer Herder <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Die sijn heyl’ghe vreedsame <rhyme label="a" type="m" corresp="#s16:l1">wet</rhyme></l>
        <l id="s16:l5" met="4" type="-+">Heeft in haer hert <rhyme label="b" type="f" corresp="#s16:l3">gheschreven</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Want alle die met Godt sijn <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Sijn met malcander oock <rhyme label="a" type="m" corresp="#s17:l1">ghemeen</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Sy weten van gheen <rhyme label="b" type="f">deelen</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Al comter al een vonckje <rhyme label="a" type="m" corresp="#s17:l1">cleen</rhyme>,</l>
        <l id="s17:l5" met="4" type="-+">Gods liefde canse <rhyme label="b" type="f" corresp="#s17:l3">heelen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Oorlof ghy Herders die <rhyme label="a" type="m">vreedsaem</rhyme></l>
        <l id="s18:l2" met="4" type="-+">V schaepkens weydt in Christi <rhyme label="a" type="m" corresp="#s18:l1">naem</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Iaeght altijd nae den <rhyme label="b" type="f">vrede</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Soo zijt ghy Gode <rhyme label="a" type="m" corresp="#s18:l1">aenghenaem</rhyme>,</l>
        <l id="s18:l5" met="4" type="-+">En alle menschen <rhyme label="b" type="f" corresp="#s18:l3">mede</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
