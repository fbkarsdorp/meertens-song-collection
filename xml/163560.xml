    <melody>Waarom zijn er zo veel juffers</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ware trouw is niet te <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Sy ontsiet geen ramp nog <rhyme label="b" type="m">nood</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ja, vreesd herteleed nog <rhyme label="a" type="f" corresp="#s1:l1">lijden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Maar bestaat tot in de <rhyme label="b" type="m" corresp="#s1:l2">dood</rhyme>.</l>
        <l id="s1:l5" met="5" type="-+">Hoe oyt de nijt haar eendragt tragt te <rhyme label="c" type="f">breken</rhyme></l>
        <l id="s1:l6" met="5" type="-+">Sy blijft altoos in trouwheyd <rhyme label="c" type="f" corresp="#s1:l5">onbesweken</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En vreesd geen afgunstig <rhyme label="c" type="f" corresp="#s1:l5">steken</rhyme>:</l>
        <l id="s1:l8" met="2" type="+-">Hare <rhyme label="d" type="m">brand</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Houd eeuwig <rhyme label="d" type="m" corresp="#s1:l8">stand</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Schoon de dood, op haar <rhyme label="a" type="f">verbolgen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Euridice   voerd in 't <rhyme label="b" type="m">graf</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Haar Orpheus sal haar <rhyme label="a" type="f" corresp="#s2:l1">volgen</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Hy vreesd dood nog helse <rhyme label="b" type="m" corresp="#s2:l2">straf</rhyme>:</l>
        <l id="s2:l5" met="5" type="-+">Geen laffe vrees kan hem haar doen <rhyme label="c" type="f">begeven</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Hoe self   het lot hem schijnd te <rhyme label="c" type="f" corresp="#s2:l5">wederstreven</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Sijne min doet haar <rhyme label="c" type="f" corresp="#s2:l5">herleven</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Schoon de <rhyme label="d" type="m">dood</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Haar oogen <rhyme label="d" type="m" corresp="#s2:l8">sloot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ware min doet alles <rhyme label="a" type="f">wijken</rhyme>.</l>
        <l id="s3:l2" met="4" type="+-">Geen gevaar, nog wreed <rhyme label="b" type="m">geweld</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Doet haar immermeer <rhyme label="a" type="f" corresp="#s3:l1">beswijken</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Sy behoud alom het <rhyme label="b" type="m" corresp="#s3:l2">veld</rhyme>.</l>
        <l id="s3:l5" met="5" type="-+">De nijt verslijt gants vrugteloos haar <rhyme label="c" type="f">tanden</rhyme></l>
        <l id="s3:l6" met="5" type="-+">En knaagd vergeefs haar brekeloose <rhyme label="c" type="f" corresp="#s3:l5">banden</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Wie van ware liefden <rhyme label="c" type="f" corresp="#s3:l5">branden</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Vresen <rhyme label="d" type="m">nood</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Nog ramp, nog <rhyme label="d" type="m" corresp="#s3:l8">dood</rhyme>.</l>
      </lg>
    </lg>
  </text>
