<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>187053</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Komt vrinden met <rhyme label="a" type="m">geneugt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt u eens gaen <rhyme label="b" type="f">begeeven</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Aen Boort met groote <rhyme label="a" type="m" corresp="#s1:l1">Vreugt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om te zien het <rhyme label="b" type="f" corresp="#s1:l2">Oorlogs-leven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Nu moeten wy hier van de <rhyme label="c" type="m">Wal</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hier baet geen <rhyme label="d" type="f">tegen-spreeken</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Laet my niet in <rhyme label="d" type="f" corresp="#s1:l6">gebreken</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">'t Is hier <rhyme label="c" type="m" corresp="#s1:l5">overal</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Nu moeten wy <rhyme label="a" type="m">geswint</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De Amsterdamsche <rhyme label="b" type="f">Meisjes</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Verlaten hoe menig <rhyme label="a" type="m" corresp="#s2:l1">Kind</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Tot hartzeer voor dit <rhyme label="b" type="f" corresp="#s2:l2">reisje</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Daar wy geweest zyn <rhyme label="c" type="m">by</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wie weet hoe menig <rhyme label="d" type="f">werven</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Zoo moeten wy gaan <rhyme label="d" type="f" corresp="#s2:l6">zwerven</rhyme>;</l>
        <l id="s2:l8" met="3" type="-+">Maer ach het is <rhyme label="c" type="m" corresp="#s2:l5">voorby</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Vergeet u liefjes <rhyme label="a" type="m">zoet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wilt in de Ligter <rhyme label="b" type="f">treeden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Zie zoo dat gaet heel <rhyme label="a" type="m" corresp="#s3:l1">goed</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wy zyn haest op de <rhyme label="b" type="f" corresp="#s3:l2">Reede</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Adieu lieve Susjes <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En wilt niet om ons <rhyme label="d" type="f">treuren</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Het zal wel meer <rhyme label="d" type="f" corresp="#s3:l6">gebeuren</rhyme>.</l>
        <l id="s3:l8" met="3" type="-+">Als wy zyn aen de <rhyme label="c" type="m" corresp="#s3:l5">Wal</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Nu benne wy voor <rhyme label="a" type="m">Amsterdam</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Voor Tessel moeten wy <rhyme label="b" type="f">leggen</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Hier zyn wy geen <rhyme label="a" type="m" corresp="#s4:l1">Baes</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wy hebben niet veel te <rhyme label="b" type="f" corresp="#s4:l2">zeggen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Scharpen is het <rhyme label="c" type="m">tydverdryft</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">En Zwabberen met <rhyme label="d" type="f">eenen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En schuuren harde <rhyme label="d" type="f" corresp="#s4:l6">Steenen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Dat is tot ons <rhyme label="c" type="m" corresp="#s4:l5">geryf</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>
