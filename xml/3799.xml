    <melody>Heilige God wij roepen dij aan</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">HEylighe Godt wy roepen dy <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Vergadert in uwen <rhyme label="b" type="f">name</rhyme>,</l>
        <l id="s1:l3" met="5" type="+-">Met uwen gheest so wilt ons <rhyme label="a" type="m" corresp="#s1:l1">bystaen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Weest Heer onder ons <rhyme label="b" type="f" corresp="#s1:l2">bequaeme</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Christe naer v beloften <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Wilt in dat midden van ons <rhyme label="c" type="m" corresp="#s1:l5">zijn</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Al met uwe cracht <rhyme label="b" type="f" corresp="#s1:l2">eersame</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">O Heere maeckt bequaem metter <rhyme label="a" type="m">spoet</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Onse sielen al <rhyme label="b" type="f">inwendich</rhyme></l>
        <l id="s2:l3" met="5" type="+-">Om dijn woort recht te verstaen seer <rhyme label="a" type="m" corresp="#s2:l1">goet</rhyme></l>
        <l id="s2:l4" met="4" type="+-">En oock te beleuen <rhyme label="b" type="f" corresp="#s2:l2">endich</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Schenckt ons Heer dijn heylighen <rhyme label="c" type="m">gheest</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Tot een leeraer in dit <rhyme label="c" type="m" corresp="#s2:l5">foreest</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Dijn licht en claerheyt <rhyme label="b" type="f" corresp="#s2:l2">bestendich</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Godt Vader Soon en heylighe <rhyme label="a" type="m">gheest</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Heylighe Godt ende <rhyme label="b" type="f">reene</rhyme></l>
        <l id="s3:l3" met="5" type="+-">Opent toch den mont des dienaers <rhyme label="a" type="m" corresp="#s3:l1">meest</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Maeckt hem uwe cracht <rhyme label="b" type="f" corresp="#s3:l2">ghemeene</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Hemelsche Vader gheeft ons <rhyme label="c" type="m">ghy</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Wat ons als nu behoeflijck <rhyme label="c" type="m" corresp="#s3:l5">sy</rhyme></l>
        <l id="s3:l7" met="4" type="+-">â€¡ Door Jesum Christum <rhyme label="b" type="f" corresp="#s3:l2">alleene</rhyme>.</l>
      </lg>
    </lg>
