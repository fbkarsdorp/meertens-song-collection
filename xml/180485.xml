<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>180485</id>
    <date>
      <year-start>1660</year-start>
      <year-end>1660</year-end>
    </date>
    <location>
      <orginal-name>leuven</orginal-name>
      <standard-name>Leuven, Belgium</standard-name>
      <coordinates>
        <lon>50.879202</lon>
        <lat>4.7011675</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Corydon zucht nacht en dag</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Adieu o weereldt vol <rhyme label="a" type="m">venijn</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Adieu bedroch vol valschen <rhyme label="a" type="m" corresp="#s1:l1">schijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ick wil u nu <rhyme label="b" type="f">verlaeten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Adieu ick scheyder <rhyme label="c" type="m">uyt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Adieu ghy lichte <rhyme label="c" type="m" corresp="#s1:l4">schuyt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ick wil Godts uyt-verkoren <rhyme label="c" type="m" corresp="#s1:l4">Bruydt</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Zijn, en u <rhyme label="b" type="f" corresp="#s1:l3">haeten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick wil die voor my gaff sijn <rhyme label="a" type="m">Bloet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En den Schepper van alle <rhyme label="a" type="m" corresp="#s2:l1">goet</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Mijn hert geheel nu <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Op dat hy daer in <rhyme label="c" type="m">woont</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die my sijn liefde <rhyme label="c" type="m" corresp="#s2:l4">thoont</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En oock met alle blyschap <rhyme label="c" type="m" corresp="#s2:l4">loont</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Van ‘t Hemelsch <rhyme label="b" type="f" corresp="#s2:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dus laet ick varen u <rhyme label="a" type="m">slaverny</rhyme>:</l>
        <l id="s3:l2" met="4" type="-+">Want anders niet en hebbe <rhyme label="a" type="m" corresp="#s3:l1">ghy</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met allen u <rhyme label="b" type="f">wellusten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die maer en zijn <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Wie datse hier <rhyme label="c" type="m" corresp="#s3:l4">geniet</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Ende wel rypelijck <rhyme label="c" type="m" corresp="#s3:l4">door-siet</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Vindt maer <rhyme label="b" type="f" corresp="#s3:l3">onrusten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy hebt de sterke Samsons <rhyme label="a" type="m">macht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En al sijn overgroote <rhyme label="a" type="m" corresp="#s4:l1">kracht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Door u wellust <rhyme label="b" type="f">benomen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">O Valsche <rhyme label="c" type="m">Dalila</rhyme>!</l>
        <l id="s4:l5" met="3" type="-+">‘T is tijdt ick van u <rhyme label="c" type="m" corresp="#s4:l4">ga</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En loop soo Iesum Christum <rhyme label="c" type="m" corresp="#s4:l4">na</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Om u ‘t <rhyme label="b" type="f" corresp="#s4:l3">ontkomen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wat heeft den schoonsten <rhyme label="a" type="m">Absolon</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En Alderwysten <rhyme label="a" type="m" corresp="#s5:l1">Salomon</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">In u wellust <rhyme label="b" type="f">gevonden</rhyme>?</l>
        <l id="s5:l4" met="3" type="-+">Als bitterheyt en <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Met galle en <rhyme label="c" type="m" corresp="#s5:l4">azijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Soo dat u alderboost <rhyme label="c" type="m" corresp="#s5:l4">venijn</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Hun heeft <rhyme label="b" type="f" corresp="#s5:l3">verslonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den Rijcken Vreck seer <rhyme label="a" type="m">delicaet</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Op u alleen had sijn <rhyme label="a" type="m" corresp="#s6:l1">verlaet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Door lust van uwe <rhyme label="b" type="f">gaven</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Maer nu is hy in <rhyme label="c" type="m">noodt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Met pijnen <rhyme label="c" type="m" corresp="#s6:l4">overgroot</rhyme>;</l>
        <l id="s6:l6" met="4" type="-+">Want in den diepsten helschen <rhyme label="c" type="m" corresp="#s6:l4">schoot</rhyme></l>
        <l id="s6:l7" met="2" type="-+">Leydt hy <rhyme label="b" type="f" corresp="#s6:l3">begraven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ick soeck voordaen de waere <rhyme label="a" type="m">rust</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En stel in Iesu mijnen <rhyme label="a" type="m" corresp="#s7:l1">lust</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Die ick alleen <rhyme label="b" type="f">beminne</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Want hy sijn lieve <rhyme label="c" type="m">Bruyt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Roept eens ter weereldt <rhyme label="c" type="m" corresp="#s7:l4">uyt</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Met Engelsch lieffelijck <rhyme label="c" type="m" corresp="#s7:l4">geluydt</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Comt mijn <rhyme label="b" type="f" corresp="#s7:l3">Vrindinnee</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
