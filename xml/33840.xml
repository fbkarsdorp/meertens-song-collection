    <melody>Het daagt in de oosten</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EN oordeelt van uw <rhyme label="a" type="f">leeven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Niemant, of oyt <rhyme label="b" type="m">verdomt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dan sal Godt u ook <rhyme label="a" type="f" corresp="#s1:l1">geeven</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat gy daer niet toe <rhyme label="b" type="m" corresp="#s1:l2">komt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Vergeeft sonder <rhyme label="a" type="f">verlangen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Een ander sijn <rhyme label="b" type="m">misdaed</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo sult gy ook <rhyme label="a" type="f" corresp="#s2:l1">ontfangen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Voor uwe schuldt, <rhyme label="b" type="m" corresp="#s2:l2">genaed'</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">In 't geeven weest seer <rhyme label="a" type="f">goedigh</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dan sal met <rhyme label="b" type="m">volligheyt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Al werden <rhyme label="a" type="f" corresp="#s3:l1">overvloedigh</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In uwe schoot <rhyme label="b" type="m" corresp="#s3:l2">geleydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sulk oordeel als gy <rhyme label="a" type="f">strijke</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sult gy gelijk <rhyme label="b" type="m">ontfaen</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">In mate <rhyme label="a" type="f" corresp="#s4:l1">desgelijke</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">U werden sal <rhyme label="b" type="m" corresp="#s4:l2">gedaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Of kan een ander <rhyme label="a" type="f">leyden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Een ander <rhyme label="b" type="m">Blindeman</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En sy niet alle <rhyme label="a" type="f" corresp="#s5:l1">beyden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In sloote vallen <rhyme label="b" type="m" corresp="#s5:l2">dan</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Een kneght gaet niet te <rhyme label="a" type="f">booven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sijn Meester; maer <rhyme label="b" type="m">volmaekt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Te sijn is hy te <rhyme label="a" type="f" corresp="#s6:l1">looven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die hem gelijke <rhyme label="b" type="m" corresp="#s6:l2">raekt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer wat of gy <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Mooght in uw Broeders <rhyme label="b" type="m">licht</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Een splinter, en <rhyme label="a" type="f" corresp="#s7:l1">behouwen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Een balk in uw <rhyme label="b" type="m" corresp="#s7:l2">gesicht</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Of tot uw Broeder <rhyme label="a" type="f">seggen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Laet ik den splinter <rhyme label="b" type="m">nu</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Uyt uwe oogen <rhyme label="a" type="f" corresp="#s8:l1">leggen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En g'hebt een balk in <rhyme label="b" type="m" corresp="#s8:l2">d'uw</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Beveynde <rhyme label="a" type="f">Hypocrijten</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Den balk uyt uw oogh <rhyme label="b" type="m">weert</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Eer gy den splinter <rhyme label="a" type="f" corresp="#s9:l1">smijten</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Uyt uw BroÃªrs oogh <rhyme label="b" type="m" corresp="#s9:l2">begeert</rhyme>.</l>
      </lg>
    </lg>
  </text>
