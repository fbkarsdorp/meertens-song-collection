    <tags/>
    <melody>Ik drink de nieuwe most</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ACh Christen Menschen <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoort eens naer dit <rhyme label="a" type="m" corresp="#s1:l1">Geval</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">'t Is een stuk het is Waeragtig <rhyme label="b" type="m">waer</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Op een Dorp een uur van <rhyme label="b" type="m" corresp="#s1:l3">Alkmaer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">St. BANKRES zo men <rhyme label="c" type="m">zeid</rhyme>.</l>
        <l id="s1:l6" met="5" type="-+">God toont over al zyn <rhyme label="c" type="m" corresp="#s1:l5">Almagtigheid</rhyme>.</l>
        <l id="s1:l7" met="4" type="-+">Dat aen een Meisje wilt <rhyme label="d" type="f">aenhooren</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Raekten buiten 't <rhyme label="e" type="m">Verstand</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Door Godes slaende <rhyme label="e" type="m" corresp="#s1:l8">Hand</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Beschouwd dat wonder <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Blyft hier een weinig <rhyme label="a" type="m" corresp="#s2:l1">staen</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Maer Iezus heeft haer door Zyn wys <rhyme label="b" type="m">belyt</rhyme></l>
        <l id="s2:l4" met="5" type="-+">'t Kind gered van haer <rhyme label="b" type="m" corresp="#s2:l3">krankzinnigheid</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Laet 't ons een teeken <rhyme label="c" type="m">zyn</rhyme>.</l>
        <l id="s2:l6" met="5" type="-+">Voor Ionk, Oud, Arm Groot en <rhyme label="c" type="m" corresp="#s2:l5">Klyn</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Wilt dit stuk eens <rhyme label="d" type="f">overdenken</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Zy heeft in geen 6 Jaer <rhyme label="e" type="m">lank</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Genoote spys of <rhyme label="e" type="m" corresp="#s2:l8">Drank</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het Meisje zo ik <rhyme label="a" type="m">verklaer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Is oud 16 a 17 <rhyme label="a" type="m" corresp="#s3:l1">Jaer</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">De zaek is ieder een <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">In Noordholland of elders daer <rhyme label="b" type="m" corresp="#s3:l3">omtrent</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Bedenkt dog meer en <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Zy word gespyst en gelaeft van de <rhyme label="c" type="m" corresp="#s3:l5">Heer</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Men kan 't anders niet <rhyme label="d" type="f">aenmerken</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">God laet haer voor een <rhyme label="e" type="m">prooy</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Haer naem is GEUTJE <rhyme label="e" type="m" corresp="#s3:l8">BOOY</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Verdraegt 't met <rhyme label="a" type="m">gedult</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">'t Is ons zonde <rhyme label="a" type="m" corresp="#s4:l1">schuld</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Merkt vry dat droevig Schouwspel <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">En wilt 't Bybel woord dog niet <rhyme label="b" type="m" corresp="#s4:l3">versmaen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Maer leeft na Godes <rhyme label="c" type="m">wet</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Die 't Oude en 't Nieuwe verbond heeft <rhyme label="c" type="m" corresp="#s4:l5">ingezet</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Dan zal u God ook niet <rhyme label="d" type="f">verlaten</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Tragt niet na 's Weerelds <rhyme label="e" type="m">goet</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Dat meenig treuren <rhyme label="e" type="m" corresp="#s4:l8">doet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Elk spreekt na zyn <rhyme label="a" type="m">verstand</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">'t Komt al uyt verre <rhyme label="a" type="m" corresp="#s5:l1">Land</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Ã´ Dwaze mensch denk dog zo niet <rhyme label="b" type="m">verkeerd</rhyme>,</l>
        <l id="s5:l4" met="5" type="-+">'t Is God die hier overal <rhyme label="b" type="m" corresp="#s5:l3">Regeerd</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Daerom zyn Toorn <rhyme label="c" type="m">brand</rhyme>,</l>
        <l id="s5:l6" met="5" type="-+">Ons zonde zyn de plaegen over 't <rhyme label="c" type="m" corresp="#s5:l5">Land</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Tragt na geen goed of hooge <rhyme label="d" type="f">staet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Goud, Silver ofte <rhyme label="e" type="m">Geld</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Word by God niet <rhyme label="e" type="m" corresp="#s5:l8">geteld</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Denk tog het is onze <rhyme label="a" type="m">schuld</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wy tergen Gods <rhyme label="a" type="m" corresp="#s6:l1">gedult</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">Ons zonde zyn de straffen over 't <rhyme label="b" type="m">Land</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">Drie Iaaren met Watervloet aen alle <rhyme label="b" type="m" corresp="#s6:l3">kand</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">De Straffe onder 't <rhyme label="c" type="m">Vee</rhyme>.</l>
        <l id="s6:l6" met="5" type="-+">Menschen en Scheepen zyn vergaen op <rhyme label="c" type="m" corresp="#s6:l5">zee</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Laete wy ons tot Iezus <rhyme label="d" type="f">keeren</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">'t Ligt dat brand zo <rhyme label="e" type="m">klaer</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Nog op den <rhyme label="e" type="m" corresp="#s6:l8">Kandelaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Veel leeven nog in <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Voort in haer jonge <rhyme label="a" type="m" corresp="#s7:l1">Ieugd</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">Vloeke en zweere vroeg en <rhyme label="b" type="m">laet</rhyme>,</l>
        <l id="s7:l4" met="5" type="-+">Ia zelfs ook klyne Kinders op de <rhyme label="b" type="m" corresp="#s7:l3">straet</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Veel gierigaers woekers <rhyme label="c" type="m">zaem</rhyme>,</l>
        <l id="s7:l6" met="5" type="-+">Bedriegers agterklappers van Gods <rhyme label="c" type="m" corresp="#s7:l5">naem</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Wild niet liegen nog <rhyme label="d" type="f">begeeren</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Uw even naestens <rhyme label="e" type="m">goed</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">dat eeuwig treuren <rhyme label="e" type="m" corresp="#s7:l8">doet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ach menschen wie gy <rhyme label="a" type="m">zyt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">'t Is hier een korten <rhyme label="a" type="m" corresp="#s8:l1">tyd</rhyme>,</l>
        <l id="s8:l3" met="5" type="-+">Dat wy in de Bedroefde weereld <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s8:l4" met="5" type="-+">De een vol vreugd de andre vol <rhyme label="b" type="m" corresp="#s8:l3">pyn</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Mogte wy al te <rhyme label="c" type="m">zaem</rhyme>.</l>
        <l id="s8:l6" met="5" type="-+">Met Lazarus het Hemelryk <rhyme label="c" type="m" corresp="#s8:l5">ontfaen</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">'t Staet duidelyk <rhyme label="d" type="f">beschreeven</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Den Ryken vrek zeer <rhyme label="e" type="m">snel</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Moest branden in de <rhyme label="e" type="m" corresp="#s8:l8">Hel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Bedenkt dat stuk dog <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Tragt na geen <rhyme label="a" type="m" corresp="#s9:l1">overspel</rhyme>,</l>
        <l id="s9:l3" met="5" type="-+">Verlaet de Waereld agt geen hooge <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s9:l4" met="5" type="-+">'t Zy al dingen door des Zatans <rhyme label="b" type="m" corresp="#s9:l3">raet</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">De haet en nyd is <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s9:l6" met="5" type="-+">De eene Mensch gunt de aer geen <rhyme label="c" type="m" corresp="#s9:l5">brood</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Het is 't beloop van deeze <rhyme label="d" type="f">weereld</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Maer gaet het den Armen <rhyme label="e" type="m">wel</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Een ander heeft veel <rhyme label="e" type="m" corresp="#s9:l8">gekwel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Betreur dog klyn en <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">'t Eynde is de <rhyme label="a" type="m" corresp="#s10:l1">Dood</rhyme>,</l>
        <l id="s10:l3" met="5" type="-+">Dat wy van hier eens moeten scheiden <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s10:l4" met="5" type="-+">Denkt aen het Kind wat zy heeft <rhyme label="b" type="m" corresp="#s10:l3">uitgestaen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Zy riep tot Iezus <rhyme label="c" type="m">goed</rhyme>,</l>
        <l id="s10:l6" met="5" type="-+">Schenkt my offerhande van uw <rhyme label="c" type="m" corresp="#s10:l5">bloed</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Ach mogt ik maer <rhyme label="d" type="f">genieten</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">O Heer geef my tot <rhyme label="e" type="m">prys</rhyme>,</l>
        <l id="s10:l9" met="3" type="-+">U 's Heemels <rhyme label="e" type="m" corresp="#s10:l8">Paradys</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Spiegelt uw al te <rhyme label="a" type="m">zaem</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Vreest dog des Heeren <rhyme label="a" type="m" corresp="#s11:l1">naem</rhyme>,</l>
        <l id="s11:l3" met="5" type="-+">Laet ons al tot een teeken <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s11:l4" met="5" type="-+">Al zyn 't Vorsten Prinsen groot of <rhyme label="b" type="m" corresp="#s11:l3">klyn</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Al zyt gy hoog van <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s11:l6" met="5" type="-+">Niemand is 'er die 'er vry van <rhyme label="c" type="m" corresp="#s11:l5">gaet</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Wy moeten eens voor God <rhyme label="d" type="f">verschyne</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Om loon na werk te <rhyme label="e" type="m">ontvaen</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">Voor dat men heeft <rhyme label="e" type="m" corresp="#s11:l8">gedaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
