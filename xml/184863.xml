  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DEn eenen minne <rhyme label="a" type="m">plach</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Den ander dagh aen <rhyme label="a" type="m" corresp="#s1:l1">dagh</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met vreughde voort te <rhyme label="b" type="f">teelen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Daermen het <rhyme label="c" type="m">teghendeel</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Nu laes! meer dan te <rhyme label="c" type="m" corresp="#s1:l4">veel</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Bespeuren kan in <rhyme label="b" type="f" corresp="#s1:l3">veelen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want hoe Godt stroockt en <rhyme label="a" type="m">streelt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Sijn liefd waerd' <rhyme label="a" type="m" corresp="#s2:l1">even-beelt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Met sijn volmaeckte <rhyme label="b" type="f">gaven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Voor weer liefd' hy <rhyme label="c" type="m">gheniet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat yder van hem <rhyme label="c" type="m" corresp="#s2:l4">vliet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En werden 's Weerelts <rhyme label="b" type="f" corresp="#s2:l3">slaven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Als hy uyt rechte <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Elck lockt ghelijck een <rhyme label="a" type="m" corresp="#s3:l1">hin</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met uytghespreyde <rhyme label="b" type="f">wiecken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Siet dan eens yder <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Beschaemt met schande <rhyme label="c" type="m" corresp="#s3:l4">staen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Voor 't dom ghepluymde <rhyme label="b" type="f" corresp="#s3:l3">kiecken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En of hy door sijn <rhyme label="a" type="m">boon</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ter Feest in 's Hemels <rhyme label="a" type="m" corresp="#s4:l1">troon</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Elck nodight noch soo <rhyme label="b" type="f">snacker</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wie maeckt hem daerom <rhyme label="c" type="m">los</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Van sijn ghekochter <rhyme label="c" type="m" corresp="#s4:l4">Os</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Of van sijn Vrouw en <rhyme label="b" type="f" corresp="#s4:l3">Acker</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hoe meerder hy <rhyme label="a" type="m">verrijckt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hoe veerder 't harte <rhyme label="a" type="m" corresp="#s5:l1">wijckt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Van 't Goddelijck <rhyme label="b" type="f">begheren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Want elck in <rhyme label="c" type="m">overdaed'</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Door pracht in d'hooghste <rhyme label="c" type="m" corresp="#s5:l4">graed</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Wellust soeckt te <rhyme label="b" type="f" corresp="#s5:l3">hanteren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Schoon dat sijn trouwe <rhyme label="a" type="m">roe</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Somwijl een dwinght daer <rhyme label="a" type="m" corresp="#s6:l1">toe</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Sijn stem te willen <rhyme label="b" type="f">horen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Soo haest sy maer <rhyme label="c" type="m">aflaet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Den selven wech hy <rhyme label="c" type="m" corresp="#s6:l4">gaet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dien hy gingh van te <rhyme label="b" type="f" corresp="#s6:l3">voren</rhyme>.</l>
      </lg>
    </lg>
  </text>
