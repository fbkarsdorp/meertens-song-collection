    <melody>Polyphemus aan de stranden</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SIlvia die mijn <rhyme label="a" type="f">gedagjes</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Daagjes, <rhyme label="a" type="f" corresp="#s1:l1">nagjes</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Vuld met <rhyme label="a" type="f" corresp="#s1:l1">klagjes</rhyme></l>
        <l id="s1:l4" met="2" type="+-">Vande <rhyme label="b" type="m">min</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Als ik op de <rhyme label="c" type="f">aartigheedjes</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Van uw <rhyme label="c" type="f" corresp="#s1:l5">leedjes</rhyme>/</l>
        <l id="s1:l7" met="2" type="+-">En uw <rhyme label="c" type="f" corresp="#s1:l5">zeedjes</rhyme>/</l>
        <l id="s1:l8" met="2" type="+-">Zet mijn <rhyme label="b" type="m" corresp="#s1:l4">zin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Woud gy ach! mijn droeve <rhyme label="a" type="f">zugjes</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Ziels <rhyme label="a" type="f" corresp="#s2:l1">gerugjes</rhyme>.</l>
        <l id="s2:l3" met="2" type="+-">Die zo <rhyme label="a" type="f" corresp="#s2:l1">vlugjes</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Van my <rhyme label="b" type="m">gaan</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Horen: En die lieve <rhyme label="c" type="f">oogjes</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Van om <rhyme label="c" type="f" corresp="#s2:l5">hoogjes</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">Uit haar <rhyme label="c" type="f" corresp="#s2:l5">boogjes</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Op my <rhyme label="b" type="m" corresp="#s2:l4">slaan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dan zo voelde ik my 't <rhyme label="a" type="f">leve</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Weder <rhyme label="a" type="f" corresp="#s3:l1">geve</rhyme>;</l>
        <l id="s3:l3" met="2" type="+-">'t Hene <rhyme label="a" type="f" corresp="#s3:l1">streven</rhyme></l>
        <l id="s3:l4" met="2" type="+-">In <rhyme label="b" type="m">verdriet</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Zouw niet meer mijn geest <rhyme label="c" type="f">ontstellen</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Noch my <rhyme label="c" type="f" corresp="#s3:l5">quellen</rhyme></l>
        <l id="s3:l7" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s3:l5">beknellen</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Als <rhyme label="b" type="m" corresp="#s3:l4">geschied</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maar of nu de Zon haar <rhyme label="a" type="f">stralen</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Neer laat <rhyme label="a" type="f" corresp="#s4:l1">dalen</rhyme>,</l>
        <l id="s4:l3" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s4:l1">verdwalen</rhyme>,</l>
        <l id="s4:l4" met="2" type="+-">Inden <rhyme label="b" type="m">vloed</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Of dat zy met glants en <rhyme label="c" type="f">luyster</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">Weer 't <rhyme label="c" type="f" corresp="#s4:l5">gekluister</rhyme>,</l>
        <l id="s4:l7" met="2" type="+-">Van het <rhyme label="c" type="f" corresp="#s4:l5">duister</rhyme></l>
        <l id="s4:l8" met="2" type="+-">Swichten <rhyme label="b" type="m" corresp="#s4:l4">doet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">'t Is alleens mijn droeve <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Die en <rhyme label="a" type="f" corresp="#s5:l1">vinnen</rhyme></l>
        <l id="s5:l3" met="2" type="+-">Noch <rhyme label="a" type="f" corresp="#s5:l1">beminnen</rhyme>,</l>
        <l id="s5:l4" met="2" type="+-">Geen <rhyme label="b" type="m">vermaak</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Zo ik missen moet op <rhyme label="c" type="f">aarde</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">U, O! <rhyme label="c" type="f" corresp="#s5:l5">waarde</rhyme>.</l>
        <l id="s5:l7" met="2" type="+-">Ach! wat <rhyme label="c" type="f" corresp="#s5:l5">baarde</rhyme></l>
        <l id="s5:l8" met="2" type="+-">Droever <rhyme label="b" type="m" corresp="#s5:l4">zaak</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
