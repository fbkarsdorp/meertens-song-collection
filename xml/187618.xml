    <tags/>
    <melody>En is er niemand in</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ZIe aan, o Heer! dit <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Zion uw teere <rhyme label="b" type="m">Bruid</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">'t Welk geschied in deeze <rhyme label="a" type="f" corresp="#s1:l1">tijden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Elk stoot-ze heen ter poorten <rhyme label="b" type="m" corresp="#s1:l2">uit</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Om dat-ze, o Heer! uw wil <rhyme label="b" type="m" corresp="#s1:l2">beduid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">In 't veld moet zy <rhyme label="a" type="f">logieren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En lijden haar baaring <rhyme label="b" type="m">daar</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Onder de wilde <rhyme label="a" type="f" corresp="#s2:l1">dieren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Met traanen moet zy spijzen <rhyme label="b" type="m" corresp="#s2:l2">haar</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Als of-ze van U verlaaten <rhyme label="b" type="m" corresp="#s2:l2">waar</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Proefd Gy dus uw <rhyme label="a" type="f">vriendinne</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O Heer! als 't goud door den <rhyme label="b" type="m">vier</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Wat zal dan den booz' <rhyme label="a" type="f" corresp="#s3:l1">beginnen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Die uw tempel vernielen <rhyme label="b" type="m" corresp="#s3:l2">hier</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En storten 't Lams-bloed zonder <rhyme label="b" type="m" corresp="#s3:l2">af-keer</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Rond-om Ierusalem <rhyme label="a" type="f">heenen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Onz bloed men als waater <rhyme label="b" type="m">vergiet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Onz vreugd verkeerd in <rhyme label="a" type="f" corresp="#s4:l1">weenen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Uw schoon lof zang en hoord men <rhyme label="b" type="m" corresp="#s4:l2">niet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Van pijne droefheid en swaar <rhyme label="b" type="m" corresp="#s4:l2">verdriet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">In onze naa-buurs <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Zijn wy als zotten <rhyme label="b" type="m">geagt</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Heer! hoe meug-dy 't <rhyme label="a" type="f" corresp="#s5:l1">gedoogen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat men ons dus vervolgd <rhyme label="b" type="m" corresp="#s5:l2">on-zagt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Als of wy waaren der dieven <rhyme label="b" type="m" corresp="#s5:l2">geslagt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Als slagt-schaapjens, o <rhyme label="a" type="f">Heere</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">Zijn wy gereekend, en <rhyme label="b" type="m">dwaaz</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Men bood ons, om uw <rhyme label="a" type="f" corresp="#s6:l1">leere</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Men zet ons vlees tot <rhyme label="b" type="m" corresp="#s6:l2">voogel-aas</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">O Heer! wanneer eind dog haar <rhyme label="b" type="m" corresp="#s6:l2">geraaz</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Niet een stad, die ons te <rhyme label="a" type="f">regte</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Gedoogen of lijden <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ter poorten uit zy ons <rhyme label="a" type="f" corresp="#s7:l1">vegten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Baals dienaars doen ons in den <rhyme label="b" type="m" corresp="#s7:l2">ban</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En meinen zy doen U een dienst daar <rhyme label="b" type="m" corresp="#s7:l2">an</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Naa U verlangd my, <rhyme label="a" type="f">Heere</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">Als een moed gejaagen <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Zie eens van booven <rhyme label="a" type="f" corresp="#s8:l1">neere</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Men baard in weedom ende <rhyme label="b" type="m" corresp="#s8:l2">smert</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Sterk ons, o God! dat men <rhyme label="b" type="m" corresp="#s8:l2">vol-herd</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Waar-om laat Gy ons <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">On-regt, vervolg en <rhyme label="b" type="m">geweld</rhyme>?</l>
        <l id="s9:l3" met="3" type="-+">Gy laat ons goed-koop <rhyme label="a" type="f" corresp="#s9:l1">glijden</rhyme></l>
        <l id="s9:l4" met="4" type="-+">En neemet voor ons ook geen <rhyme label="b" type="m" corresp="#s9:l2">geld</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Haal ons weeder, o Heer! Gy trouwe <rhyme label="b" type="m" corresp="#s9:l2">held</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Strij, o Heer! met mijne <rhyme label="a" type="f">strijders</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Ik en mag niet klaagen <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Laat beschaamd zijn mijn <rhyme label="a" type="f" corresp="#s10:l1">benijders</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">Ik beveel U mijn zaak, o <rhyme label="b" type="m" corresp="#s10:l2">Heer</rhyme>!</l>
        <l id="s10:l5" met="4" type="-+">Regt Gy-ze dog uit naa uw <rhyme label="b" type="m" corresp="#s10:l2">begeer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ging ik met u in 't <rhyme label="a" type="f">regte</rhyme></l>
        <l id="s11:l2" met="3" type="-+">O Heer! Gy behield dog <rhyme label="b" type="m">regt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Maar dit vraag ik U <rhyme label="a" type="f" corresp="#s11:l1">slegte</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Waar-om gaat het wel den boozen <rhyme label="b" type="m" corresp="#s11:l2">knegt</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Die al-tijd tegen de waarheid <rhyme label="b" type="m" corresp="#s11:l2">vegt</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Eylaas! Ik moet eens <rhyme label="a" type="f">spreeken</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Hoor my uw Bruidegom <rhyme label="b" type="m">zoet</rhyme>;</l>
        <l id="s12:l3" met="3" type="-+">Uw leet zal ik haast <rhyme label="a" type="f" corresp="#s12:l1">wreeken</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">En van haar eisschen uwe <rhyme label="b" type="m" corresp="#s12:l2">bloed</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Hier-om, o mijn Bruid! heb goeden <rhyme label="b" type="m" corresp="#s12:l2">moed</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Laat u, o Bruid! <rhyme label="a" type="f">genoegen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Met mijnder <rhyme label="b" type="m">genadigheid</rhyme>:</l>
        <l id="s13:l3" met="3" type="-+">Ik zal u een kroon <rhyme label="a" type="f" corresp="#s13:l1">toe-voegen</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Die duuren zal in <rhyme label="b" type="m" corresp="#s13:l2">eeuwigheid</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Voor dat gy nu baard met swaar <rhyme label="b" type="m" corresp="#s13:l2">arbeid</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Leg af uwe <rhyme label="a" type="f">treur-kleeren</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Doet uw cieragie <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">U en zal geen leet meer <rhyme label="a" type="f" corresp="#s14:l1">deeren</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">De tweede dood zal u niet <rhyme label="b" type="m" corresp="#s14:l2">scha'en</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Uw traanen zullen u zijn <rhyme label="b" type="m" corresp="#s14:l2">af-gedaan</rhyme>,</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Ik geef u blijde <rhyme label="a" type="f">herten</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Voor eenen bedroefden <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Al baard gy nu in <rhyme label="a" type="f" corresp="#s15:l1">smerten</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Dat komt Evan <rhyme label="b" type="m" corresp="#s15:l2">alder-meest</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Om dat-ze on-gehoorzaam is <rhyme label="b" type="m" corresp="#s15:l2">geweest</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Verblij u, o gy <rhyme label="a" type="f">schoone</rhyme>!</l>
        <l id="s16:l2" met="3" type="-+">Uw baaren is nu al <rhyme label="b" type="m">geschied</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Ik koom en breng u <rhyme label="a" type="f" corresp="#s16:l1">loone</rhyme></l>
        <l id="s16:l4" met="4" type="-+">d' Welk noit Menschen oog en <rhyme label="b" type="m" corresp="#s16:l2">ziet</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Dat geef Ik u uit genaaden om <rhyme label="b" type="m" corresp="#s16:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Zaalig zijn alle <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Die zien, dat gy nu <rhyme label="b" type="m">ziet</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Zaalig zijn die 't <rhyme label="a" type="f" corresp="#s17:l1">gedoogen</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Wat haar om mijnen naam <rhyme label="b" type="m" corresp="#s17:l2">geschied</rhyme>,</l>
        <l id="s17:l5" met="4" type="-+">Want Ik uw Heer een betaalder <rhyme label="b" type="m" corresp="#s17:l2">hiet</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Oorlof, o hoopken <rhyme label="a" type="f">kleine</rhyme>!</l>
        <l id="s18:l2" met="3" type="-+">Hier ende daar <rhyme label="b" type="m">verjaagd</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Ik groet u uit liefde <rhyme label="a" type="f" corresp="#s18:l1">reine</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Al haat men u, weez niet <rhyme label="b" type="m" corresp="#s18:l2">verzaagd</rhyme>,</l>
        <l id="s18:l5" met="4" type="-+">Dit aardze huis voor 't Heemelze <rhyme label="b" type="m" corresp="#s18:l2">waagd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
