    <melody>Waar is de dochter van Sion</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GEen raet, noch geen <rhyme label="a" type="m">voorsichtigheyt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Is tegens Godt te <rhyme label="b" type="f">vinde</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Herodes door <rhyme label="a" type="m" corresp="#s1:l1">eergierigheyt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Laet hem geheel <rhyme label="b" type="f" corresp="#s1:l2">verblinde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo dra hy uyt de Wijse <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat de Coningh der <rhyme label="b" type="f">Ioden</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Geboren is, 't hart blijft <rhyme label="a" type="m" corresp="#s2:l1">verstoort</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Sijn verlosser wil <rhyme label="b" type="f" corresp="#s2:l2">doode</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Om dat dit souw mislucke <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Soldaten doet <rhyme label="b" type="f">vergaren</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Op swaere straffen haer <rhyme label="a" type="m" corresp="#s3:l1">gebiedt</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Om 't minst noch 't meest te <rhyme label="b" type="f" corresp="#s3:l2">sparen</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Van 't jonghste, tot 't Kindt van twee <rhyme label="a" type="m">jaer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Als Leeuwen haest door <rhyme label="b" type="f">soecken</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Bethlehem, en rontom <rhyme label="a" type="m" corresp="#s4:l1">aldaer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In Wiegen, en in <rhyme label="b" type="f" corresp="#s4:l2">hoecken</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De ponjaert raeckt uyt 't leer, en <rhyme label="a" type="m">swaert</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hier mee de teere <rhyme label="b" type="f">leden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Van Kinders nauwelicks <rhyme label="a" type="m" corresp="#s5:l1">gebaert</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Door steken sonder <rhyme label="b" type="f" corresp="#s5:l2">reden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dit volck slaet, stoot, houdt, snijt en <rhyme label="a" type="m">kerft</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">In Dorpen en in <rhyme label="b" type="f">Steden</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Het onnoosel bloedt d' aerde <rhyme label="a" type="m" corresp="#s6:l1">verft</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">'t Ingewant uyt 't lijf <rhyme label="b" type="f" corresp="#s6:l2">trede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Het bloet springht als uyt een <rhyme label="a" type="m">Fonteyn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Haer leedtjes gelijck <rhyme label="b" type="f">aren</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Vallen neder door de <rhyme label="a" type="m" corresp="#s7:l1">zeyn</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En door de wint de <rhyme label="b" type="f" corresp="#s7:l2">blaren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Het Moeders hart door snijt de <rhyme label="a" type="m">lucht</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">Men hoort haer niet als <rhyme label="b" type="f">kermen</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Sint' Joseph en Maria <rhyme label="a" type="m" corresp="#s8:l1">vlucht</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Om Iesum te <rhyme label="b" type="f" corresp="#s8:l2">beschermen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sluyt Moeders uwe tranen <rhyme label="a" type="m">sluys</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Weet dat van Christus <rhyme label="b" type="f">scharen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">U Kinders sterven Maeghden <rhyme label="a" type="m" corresp="#s9:l1">kuys</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En d' eerste <rhyme label="b" type="f" corresp="#s9:l2">Martelaren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Krijght voor ons, Kinders <rhyme label="a" type="m">allegaer</rhyme>;</l>
        <l id="s10:l2" met="3" type="-+">Dat Godt ons wil <rhyme label="b" type="f">verstercken</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">Dat ons hart en le'en en blijven <rhyme label="a" type="m" corresp="#s10:l1">klaer</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat wy niet als goet <rhyme label="b" type="f" corresp="#s10:l2">wercken</rhyme>.</l>
      </lg>
    </lg>
  </text>
