  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wat baed u de voochdy der <rhyme label="a" type="f">Landen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">End' dat ghy su maect <rhyme label="b" type="m">onderdaen</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Als ghy met oneer en met <rhyme label="a" type="f" corresp="#s1:l1">schanden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Noch op het eynde moet <rhyme label="b" type="m" corresp="#s1:l2">bestaen</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Die God, doe't al door <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">Sal straffen die daer hebben quaet <rhyme label="d" type="m">gedaen</rhyme>,,</l>
        <l id="s1:l7" met="4" type="+-">End' syn hoopken laten <rhyme label="c" type="m" corresp="#s1:l5">niet</rhyme>,,</l>
        <l id="s1:l8" met="4" type="+-">Altyt even treurig <rhyme label="d" type="m" corresp="#s1:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat baet u hier te syn <rhyme label="a" type="f">verheven</rhyme>?</l>
        <l id="s2:l2" met="4" type="-+">En dat ghy syt een machtig <rhyme label="b" type="m">Heer</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Wanneer ghy nae dit korte <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Wert vanden Heer verlaten <rhyme label="b" type="m" corresp="#s2:l2">weer</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Die Godt, die't al <rhyme label="c" type="m">doorsiet</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Sal straffen die daer hebben quaet <rhyme label="d" type="m">gedaen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En syn hoopken laten <rhyme label="c" type="m" corresp="#s2:l5">niet</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Altijt even treurig <rhyme label="d" type="m" corresp="#s2:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat baet verstant ende' hoog <rhyme label="a" type="f">geleertheyt</rhyme>?</l>
        <l id="s3:l2" met="4" type="-+">Als ghy't so gaet misbruycken <rhyme label="b" type="m">al</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">En alle't goet wend tot <rhyme label="a" type="f" corresp="#s3:l1">verkeertheyt</rhyme>?</l>
        <l id="s3:l4" met="4" type="-+">'tWelck u noch, suer op breken <rhyme label="b" type="m" corresp="#s3:l2">sal</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Die Godt, die't al <rhyme label="c" type="m">doorsiet</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Sal straffen die daer hebben quaet <rhyme label="d" type="m">gedaen</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En syn hoopken laten <rhyme label="c" type="m" corresp="#s3:l5">niet</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Altijt even treurig <rhyme label="d" type="m" corresp="#s3:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wat baet dat ghy veel goede <rhyme label="a" type="f">leering</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Door vrome luyden hebt <rhyme label="b" type="m">gehoort</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">Als ghy niet trachtet na <rhyme label="a" type="f" corresp="#s4:l1">bekeering</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">End' Lant door vier en swaert <rhyme label="b" type="m" corresp="#s4:l2">verstoort</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Die Godt, die't al <rhyme label="c" type="m">doorsiet</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Sal straffen die daer hebben quaet <rhyme label="d" type="m">gedaen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">En syn hoopken laten <rhyme label="c" type="m" corresp="#s4:l5">niet</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Altijt even treurig <rhyme label="d" type="m" corresp="#s4:l6">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
