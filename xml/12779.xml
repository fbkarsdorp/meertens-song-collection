  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ZIel! waer heen sult ghy <rhyme label="a" type="f">wijcken</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Als 'tLichaem gaet <rhyme label="a" type="f" corresp="#s1:l1">beswijcken</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Moet ghy na <rhyme label="b" type="m">'tvagevyer</rhyme>?</l>
        <l id="s1:l4" met="3" type="-+">Neen: 'treynighen van <rhyme label="c" type="f">sonden</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Heb ick in Christi <rhyme label="c" type="f" corresp="#s1:l4">wonden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Eer dat ick scheyd' van <rhyme label="b" type="m" corresp="#s1:l3">hier</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ziel! wenscht ghy om te <rhyme label="a" type="f">sterven</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Ghy sult dan moeten <rhyme label="a" type="f" corresp="#s2:l1">derven</rhyme></l>
        <l id="s2:l3" met="3" type="-+">De vreugde van Gods <rhyme label="b" type="m">Kerck</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Jae: want stracx na <rhyme label="c" type="f">'tverscheyden</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Sal d'Engel my <rhyme label="c" type="f" corresp="#s2:l4">geleyden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Tot 'theyligh hemelsch <rhyme label="b" type="m" corresp="#s2:l3">werck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ziel! blijft ghy by den <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sonder oyt weer te <rhyme label="a" type="f" corresp="#s3:l1">keere</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Denckt ghy om 'tlichaem <rhyme label="b" type="m">niet</rhyme>?</l>
        <l id="s3:l4" met="3" type="-+">Neen: 'tlichaem sal weer <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">'kSal my daer in <rhyme label="c" type="f" corresp="#s3:l4">begeven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Soo eynd al het <rhyme label="b" type="m" corresp="#s3:l3">verdriet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ziel! sult ghy 'tlichaem <rhyme label="a" type="f">vinden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Verstroyt door alle <rhyme label="a" type="f" corresp="#s4:l1">winden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En 'teenemael <rhyme label="b" type="m">verrot</rhyme>?</l>
        <l id="s4:l4" met="3" type="-+">Jae: want 'tsal eens <rhyme label="c" type="f">verrijsen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">'kSal in mijn lichaem <rhyme label="c" type="f" corresp="#s4:l4">prijsen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">In eeuwigheyt, mijn <rhyme label="b" type="m" corresp="#s4:l3">Godt</rhyme>.</l>
      </lg>
    </lg>
  </text>
