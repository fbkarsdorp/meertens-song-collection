<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>152799</id>
    <date>
      <year-start>1700</year-start>
      <year-end>1700</year-end>
    </date>
    <tags/>
    <melody>Als ik mijn Phyllis kussen mag</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als ik mijn Philis kussen <rhyme label="a" type="m">magh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">lag ik met gode <rhyme label="b" type="f">leckernyen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">de Son op 't schoonste van de <rhyme label="a" type="m" corresp="#s1:l1">dagh</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">kan my nu als haer oog <rhyme label="b" type="f" corresp="#s1:l2">verblyen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Laad Phebus in het morgen <rhyme label="a" type="m">rood</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">zig met aurora vry <rhyme label="b" type="f">vermaken</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">ik leg liever in mijn Filis <rhyme label="a" type="m" corresp="#s2:l1">schoodt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">en pluk de roosie  van haer <rhyme label="b" type="f" corresp="#s2:l2">kaken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'k Misgun Jupijn sijn spijtig <rhyme label="a" type="m">wijf</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">nog Mars zijn boeltie <rhyme label="b" type="f">uytgelesen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">dat bachus by sijn cerus <rhyme label="a" type="m" corresp="#s3:l1">blijf</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">ik wil liever by mijn Fhilis <rhyme label="b" type="f" corresp="#s3:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Haer aenscheyn mijn een hemel <rhyme label="a" type="m">strekt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">haer oogjes sijn mijn sonne <rhyme label="b" type="f">strale</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">ag alse mijn dat ligt <rhyme label="a" type="m" corresp="#s4:l1">ontrekt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">verdwijn ik in een nagt van <rhyme label="b" type="f" corresp="#s4:l2">qualen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het root korael is sonder <rhyme label="a" type="m">glans</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">by 't geurig blos van hare <rhyme label="b" type="f">wangen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">mijn ziel blijft in de goude <rhyme label="a" type="m" corresp="#s5:l1">krans</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">van haer gekrulde lokies <rhyme label="b" type="f" corresp="#s5:l2">hangen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sy is altijd tot min <rhyme label="a" type="m">bereyd</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">nooyt heeft de hare mijn <rhyme label="b" type="f">verdrooten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">wat heb ik vaek al <rhyme label="a" type="m" corresp="#s6:l1">zoetigheyt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">in haer omhelsinge <rhyme label="b" type="f" corresp="#s6:l2">genooten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die vreugt gaet noyt uyt mijn <rhyme label="a" type="m">gemoet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">nog nimmermeer uyt mijn <rhyme label="b" type="f">gedagten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">mijn Filis ag hoe soet hoe <rhyme label="a" type="m" corresp="#s7:l1">soet</rhyme></l>
        <l id="s7:l4" met="4" type="-+">ist in u armen te <rhyme label="b" type="f" corresp="#s7:l2">verdagten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
