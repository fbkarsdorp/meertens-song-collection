  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">JErusalemsche <rhyme label="a" type="m">Jeught</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Schept moedt, schept vreugt en <rhyme label="a" type="m" corresp="#s1:l1">deught</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Terwyl ons is <rhyme label="b" type="f">gheboren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Een Kindt een Hemels <rhyme label="c" type="m">Kindt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Waer in de ziele <rhyme label="c" type="m" corresp="#s1:l4">vindt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat eertydts was <rhyme label="b" type="f" corresp="#s1:l3">verloren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het was den droefsten <rhyme label="a" type="m">stondt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Als 't Goddelyck <rhyme label="a" type="m" corresp="#s2:l1">verbondt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Door Adam wirdt <rhyme label="b" type="f">gheschonden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Het was den blydtsten <rhyme label="c" type="m">dagh</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Die oyt de Wereldt <rhyme label="c" type="m" corresp="#s2:l4">sagh</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Als Christus wirdt <rhyme label="b" type="f" corresp="#s2:l3">ghesonden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Heer die 't al <rhyme label="a" type="m">verwermt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Light hier van koud' en <rhyme label="a" type="m" corresp="#s3:l1">kermt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">O Mensch wilt Godt <rhyme label="b" type="f">ontfermen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">De Liefde light hier <rhyme label="c" type="m">naeckt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Naer uwe Liefd' en <rhyme label="c" type="m" corresp="#s3:l4">snaeckt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Verwermt haer in uw' <rhyme label="b" type="f" corresp="#s3:l3">ermen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Doet Os en Esel <rhyme label="a" type="m">naer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En aessemt over <rhyme label="a" type="m" corresp="#s4:l1">haer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Laet Godt uw' Liefde <rhyme label="b" type="f">winnen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die u den adem <rhyme label="c" type="m">gaf</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die moet ghy tot het <rhyme label="c" type="m" corresp="#s4:l4">graf</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En lesten adem <rhyme label="b" type="f" corresp="#s4:l3">minnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die als hy is een <rhyme label="a" type="m">Kindt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dit Hemels Kindt <rhyme label="a" type="m" corresp="#s5:l1">bemindt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Uyt heel syn hert en <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die ziel is 't die <rhyme label="c" type="m">volhert</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Wanneêr sy ouder <rhyme label="c" type="m" corresp="#s5:l4">wert</rhyme></l>
        <l id="s5:l6" met="3" type="-+">In Jesum te <rhyme label="b" type="f" corresp="#s5:l3">beminnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
