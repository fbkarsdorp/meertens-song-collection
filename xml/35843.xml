  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EY wilt met my nu al <rhyme label="a" type="f">aenspannen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Beminders van Mariaes <rhyme label="b" type="m">lof</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Ghy Maeght, Weduw, Vrouwen en <rhyme label="a" type="f" corresp="#s1:l1">Mannen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Gaet inde roode Roosen <rhyme label="b" type="m" corresp="#s1:l2">Hof</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Denckt nu met <rhyme label="c" type="m">mijn</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Op Jesu <rhyme label="c" type="m" corresp="#s1:l5">pijn</rhyme>:</l>
        <l id="s1:l7" met="5" type="-+">Want nu oprecht ghy over dencken <rhyme label="d" type="m">moet</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">Dat Jesu voor ons stort, en geeft sijn <rhyme label="d" type="m" corresp="#s1:l7">bloedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Iesu in 't Hof van <rhyme label="a" type="f">Oliveten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ghy sweet daer veel waerachtigh <rhyme label="b" type="m">bloet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Geeft Iesu dat wy 't noyt <rhyme label="a" type="f" corresp="#s2:l1">vergeten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Wat ghy om onse sonden <rhyme label="b" type="m" corresp="#s2:l2">doet</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Stort in ons <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Door dese <rhyme label="c" type="m" corresp="#s2:l5">smert</rhyme>,</l>
        <l id="s2:l7" met="5" type="-+">Dat yder sijn sonden beweenen <rhyme label="d" type="m">magh</rhyme>,</l>
        <l id="s2:l8" met="5" type="-+">Om te verblijden in de jonghsten <rhyme label="d" type="m" corresp="#s2:l7">dagh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer na men siet Iesum <rhyme label="a" type="f">ontkleden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die alles geeft, en al <rhyme label="b" type="m">bekleedt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Voor ons laet scheuren al sijn <rhyme label="a" type="f" corresp="#s3:l1">leden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">'t Bloedt uyt al sijn leden <rhyme label="b" type="m" corresp="#s3:l2">spleet</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Ey! mijnen <rhyme label="c" type="m">schult</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Jesu <rhyme label="c" type="m" corresp="#s3:l5">vervult</rhyme>,</l>
        <l id="s3:l7" met="5" type="-+">Voor u voeten ick buygh, en neder <rhyme label="d" type="m">kniel</rhyme>,</l>
        <l id="s3:l8" met="5" type="-+">Door uw' bloet wast, en suyvert mijne <rhyme label="d" type="m" corresp="#s3:l7">ziel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Jesu de doorens doen my <rhyme label="a" type="f">treuren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Waer van gemaeckt is uwe <rhyme label="b" type="m">Kroon</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Hier mede men 't heel hooft door <rhyme label="a" type="f" corresp="#s4:l1">scheuren</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Van u, mijn waerde Godes <rhyme label="b" type="m" corresp="#s4:l2">Zoon</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Jesu <rhyme label="c" type="m">bespot</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Geeft my dit <rhyme label="c" type="m" corresp="#s4:l5">lot</rhyme>,</l>
        <l id="s4:l7" met="5" type="-+">Dan niet verloren gaet, 't bloet van u <rhyme label="d" type="m">hooft</rhyme>,</l>
        <l id="s4:l8" met="5" type="-+">Geeft my, dat niet mijn ziel van u <rhyme label="d" type="m" corresp="#s4:l7">berooft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Iesu, ick hoor in uwe <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Cruyst, Cruyst hem, uyt de Ioden <rhyme label="b" type="m">mondt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Daer na ghy hebt 't swaer Kruys <rhyme label="a" type="f" corresp="#s5:l1">gedragen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Om mijn boosheyt, en groote <rhyme label="b" type="m" corresp="#s5:l2">sondt</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Waer ghy nu <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">'t Bloet vloeyt op <rhyme label="c" type="m" corresp="#s5:l5">straet</rhyme>:</l>
        <l id="s5:l7" met="5" type="-+">Geeft wat ick doe, waer ick stae, of <rhyme label="d" type="m">wandel</rhyme>,</l>
        <l id="s5:l8" met="5" type="-+">Dat ick u loopent bloedt voor oogen <rhyme label="d" type="m" corresp="#s5:l7">stel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Iesu, ghy hebt d' Hemel <rhyme label="a" type="f">ontsloten</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Als ghy aen 't Kruys geeft uwen <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En 't laetste bloedt voor ons <rhyme label="a" type="f" corresp="#s6:l1">vergoten</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Ons te brengen tot 't Hemels <rhyme label="b" type="m" corresp="#s6:l2">feest</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Mijn Iesu <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">'k Smeeck met <rhyme label="c" type="m" corresp="#s6:l5">ootmoet</rhyme>,</l>
        <l id="s6:l7" met="5" type="-+">Laet uw' bloet aen mijn niet verloren <rhyme label="d" type="m">gaen</rhyme>:</l>
        <l id="s6:l8" met="5" type="-+">Geeft my hier door d'helsche brandt te <rhyme label="d" type="m" corresp="#s6:l7">ontgaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Iesu! ons eten, ende <rhyme label="a" type="f">loopen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Met Adam, na d' verboden <rhyme label="b" type="m">vrucht</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dat moet ghy met uw' doodt <rhyme label="a" type="f" corresp="#s7:l1">bekoopen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Mijn hart hierom weent ende <rhyme label="b" type="m" corresp="#s7:l2">sucht</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">Door uw' Kruys <rhyme label="c" type="m">heel</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">En wonden <rhyme label="c" type="m" corresp="#s7:l5">veel</rhyme>,</l>
        <l id="s7:l7" met="5" type="-+">Geeft dat ick door mijnen sonden niet <rhyme label="d" type="m">meer</rhyme></l>
        <l id="s7:l8" met="5" type="-+">Kruys noch bespot, u mijn Godt ende <rhyme label="d" type="m" corresp="#s7:l7">Heer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Door uwe genagelde <rhyme label="a" type="f">voeten</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En oock door uwe handen <rhyme label="b" type="m">twee</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Wilt o Iesu! hier door <rhyme label="a" type="f" corresp="#s8:l1">versoeten</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Al mijn pijn, smart ofte <rhyme label="b" type="m" corresp="#s8:l2">wee</rhyme>:</l>
        <l id="s8:l5" met="2" type="-+">Wilt oock daet <rhyme label="c" type="m">by</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Door uwe <rhyme label="c" type="m" corresp="#s8:l5">zy</rhyme>,</l>
        <l id="s8:l7" met="5" type="-+">Mijn hart, handen en voeten soo <rhyme label="d" type="m">behoen</rhyme>,</l>
        <l id="s8:l8" met="5" type="-+">Dat sy tegens uw' noyt geen quaet en <rhyme label="d" type="m" corresp="#s8:l7">doen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Och Maria! Door uwe <rhyme label="a" type="f">ziele</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Heeft door steken geheel het <rhyme label="b" type="m">swaert</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Als de Ioden, de boose <rhyme label="a" type="f" corresp="#s9:l1">sielen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Kruysten Iesum van uw' <rhyme label="b" type="m" corresp="#s9:l2">gebaert</rhyme>.</l>
        <l id="s9:l5" met="2" type="-+">Droevighste <rhyme label="c" type="m">Maeght</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">'k Weet dat u <rhyme label="c" type="m" corresp="#s9:l5">haeght</rhyme>,</l>
        <l id="s9:l7" met="5" type="-+">Dat wy u swaer lijden gedachtigh <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s9:l8" met="5" type="-+">Dat ghy soo veel lijdt, 't is ons smart en <rhyme label="d" type="m" corresp="#s9:l7">pijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
