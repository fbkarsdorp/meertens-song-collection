<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11876</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Schoonste nimf van het woud</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VVAer mijn oogh, een traene <rhyme label="a" type="m">Bron</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Dat ick <rhyme label="a" type="m" corresp="#s1:l1">kon</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Al het ongeval <rhyme label="b" type="f">beweenen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Waerom d'arme Christen <rhyme label="c" type="m">schaer</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Vol <rhyme label="c" type="m" corresp="#s1:l4">gevaer</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Moet versuchten en dus <rhyme label="b" type="f" corresp="#s1:l3">steenen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als ick sie 't verwoesten <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">O dan <rhyme label="a" type="m" corresp="#s2:l1">staen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Al dees grouwlen voor mijn <rhyme label="b" type="f">oogen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dan gedenck ick, ach mijn <rhyme label="c" type="m">Heer</rhyme>!</l>
        <l id="s2:l5" met="2" type="+-">Kondy <rhyme label="c" type="m" corresp="#s2:l4">meer</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Al dit moord-geschrey <rhyme label="b" type="f" corresp="#s2:l3">gedoogen</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hier verjaeght men Man en <rhyme label="a" type="m">Vrouw</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">En vol <rhyme label="a" type="m" corresp="#s3:l1">rouw</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Zijn de arme <rhyme label="b" type="f">Ondersaten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die verslagen als het <rhyme label="c" type="m">Vee</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Wee! ach <rhyme label="c" type="m" corresp="#s3:l4">wee</rhyme>!</l>
        <l id="s3:l6" met="4" type="+-">Zijn gesaeyt op veld en <rhyme label="b" type="f" corresp="#s3:l3">straeten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Weent o Dochter Sions <rhyme label="a" type="m">weent</rhyme>!</l>
        <l id="s4:l2" met="2" type="+-">Sucht en <rhyme label="a" type="m" corresp="#s4:l1">steent</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Houdt niet af van bitter <rhyme label="b" type="f">klaegen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Stort u tranen als een <rhyme label="c" type="m">vloedt</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Om het <rhyme label="c" type="m" corresp="#s4:l4">bloed</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dat soo deerlijck leyt <rhyme label="b" type="f" corresp="#s4:l3">verslagen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">God sal eens van boven <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Wannen 't <rhyme label="a" type="m" corresp="#s5:l1">kaf</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En met scherpe geessels <rhyme label="b" type="f">wreecken</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Al dees wrevelmoed en <rhyme label="c" type="m">quaed</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Dat hy <rhyme label="c" type="m" corresp="#s5:l4">haet</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En in sijne gramschap <rhyme label="b" type="f" corresp="#s5:l3">spreecken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wegh ghy boose verr' van <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Want mijn <rhyme label="a" type="m" corresp="#s6:l1">vyer</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Sal op uwe zielen <rhyme label="b" type="f">branden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En ghy sult in vlam en <rhyme label="c" type="m">roock</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Voor 't <rhyme label="c" type="m" corresp="#s6:l4">gespoock</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Zijn verschrickt, en <rhyme label="b" type="f" corresp="#s6:l3">klapper-tanden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Steeckt dan eens u swaerden <rhyme label="a" type="m">op</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Of u <rhyme label="a" type="m" corresp="#s7:l1">kop</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Sal gevoelen Godes <rhyme label="b" type="f">tooren</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Want een fel moordadigh <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Sal met <rhyme label="c" type="m" corresp="#s7:l4">smert</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Een verschricklijck oordeel <rhyme label="b" type="f" corresp="#s7:l3">hooren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
