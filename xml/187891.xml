  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Alder-zoetste <rhyme label="a" type="f">leeven</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">O alder-zoetste <rhyme label="b" type="m">lust</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Waar lust is <rhyme label="a" type="f" corresp="#s1:l1">weg-gedreeven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Daar leid nu God zijn <rhyme label="b" type="m" corresp="#s1:l2">rust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De slang is hier <rhyme label="a" type="f">verdweenen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">'s Vlees lust is hier <rhyme label="b" type="m">gedood</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Het oud is nu al <rhyme label="a" type="f" corresp="#s2:l1">heenen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">'t Nieu is 'er in <rhyme label="b" type="m" corresp="#s2:l2">gepoot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hier springt de nieu <rhyme label="a" type="f">fonteine</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hier vloeyd den nieuwen <rhyme label="b" type="m">wijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hier smaakt men God <rhyme label="a" type="f" corresp="#s3:l1">alleine</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Al 't oud is ziel <rhyme label="b" type="m" corresp="#s3:l2">fenijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hier groeyd den boom des <rhyme label="a" type="f">leevens</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In 't nieuwe <rhyme label="b" type="m">Paradijz</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En God schenkt daar <rhyme label="a" type="f" corresp="#s4:l1">beneevens</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Zijns leevens zoete <rhyme label="b" type="m" corresp="#s4:l2">spijz</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Van vreugde moet men <rhyme label="a" type="f">springen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Van vreugde weenen <rhyme label="b" type="m">mee</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Van vreugde moet men <rhyme label="a" type="f" corresp="#s5:l1">zingen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Want God beweegd de <rhyme label="b" type="m" corresp="#s5:l2">stee</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Van vreugde word men <rhyme label="a" type="f">dronken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Het dringd door all' de <rhyme label="b" type="m">le'e</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En 't dropje word <rhyme label="a" type="f" corresp="#s6:l1">verzonken</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In d' Alder-grootste <rhyme label="b" type="m" corresp="#s6:l2">zee</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Men word zoo gants <rhyme label="a" type="f">verslonden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In deeze <rhyme label="b" type="m">vreugden-gloed</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Geen tong en kan 't <rhyme label="a" type="f" corresp="#s7:l1">verkonden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">'t Is 't alder-zoetste <rhyme label="b" type="m" corresp="#s7:l2">zoet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O Mensch! dit moet gy <rhyme label="a" type="f">derven</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En erven 't <rhyme label="b" type="m">teegen-deel</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Zoo gy 't niet al gaat <rhyme label="a" type="f" corresp="#s8:l1">sterven</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Geen deel, maar al <rhyme label="b" type="m" corresp="#s8:l2">geheel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ei lieve! ken uw <rhyme label="a" type="f">waarde</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">De waarde van uw <rhyme label="b" type="m">ziel</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Want al de heele <rhyme label="a" type="f" corresp="#s9:l1">aarde</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Geen waarde daar by <rhyme label="b" type="m" corresp="#s9:l2">hiel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Kan u 's vlees lust <rhyme label="a" type="f">bekooren</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En maar een hand vol <rhyme label="b" type="m">vreugd</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Waar-om laat gy <rhyme label="a" type="f" corresp="#s10:l1">verlooren</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Een vreugd vol van <rhyme label="b" type="m" corresp="#s10:l2">geneugd</rhyme>?</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Hebt gy wel eens ter <rhyme label="a" type="f">deegen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Op 's Weerelds doen <rhyme label="b" type="m">gelet</rhyme>?</l>
        <l id="s11:l3" met="3" type="-+">Hoe meer en meer <rhyme label="a" type="f" corresp="#s11:l1">verleegen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Hoe meer en meer <rhyme label="b" type="m" corresp="#s11:l2">verlet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wat is toch 's Weerelds <rhyme label="a" type="f">weezen</rhyme>?</l>
        <l id="s12:l2" met="3" type="-+">Wat wind hy die dit <rhyme label="b" type="m">wind</rhyme>?</l>
        <l id="s12:l3" met="3" type="-+">Wind zal zijn rijkdom <rhyme label="a" type="f" corresp="#s12:l1">weezen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Want al zijn winst is <rhyme label="b" type="m" corresp="#s12:l2">wind</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">O Menschen! Laat u <rhyme label="a" type="f">raaden</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">God bid u als een <rhyme label="b" type="m">vriend</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Waar-om wild gy <rhyme label="a" type="f" corresp="#s13:l1">versmaaden</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Dat u zoo noodig <rhyme label="b" type="m" corresp="#s13:l2">diend</rhyme>?</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Onz Heer doet ons <rhyme label="a" type="f">verkonden</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Deez wonderlijke <rhyme label="b" type="m">feest</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Zoo gy dit wild <rhyme label="a" type="f" corresp="#s14:l1">door-gronden</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Zoo leef hier naa den <rhyme label="b" type="m" corresp="#s14:l2">geest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
