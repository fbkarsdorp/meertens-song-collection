  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DAer de vrienschap is <rhyme label="a" type="f">gebroken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Heeft den wyn dees wonder <rhyme label="b" type="m">kracht</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Dat hy weer kan liefde <rhyme label="a" type="f" corresp="#s1:l1">stoken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat den peys wert <rhyme label="b" type="m" corresp="#s1:l2">inghebracht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Met den wyn verstoorde <rhyme label="c" type="f">menschen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dryncken peys naer hunne <rhyme label="c" type="f" corresp="#s1:l5">wenschen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Want'er toch niet soeter <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Als daer peys en vrientschap <rhyme label="d" type="m" corresp="#s1:l7">is</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als der oude lieden <rhyme label="a" type="f">krachten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Hun begeven, kan den <rhyme label="b" type="m">wyn</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hun verquycken tot 't <rhyme label="a" type="f" corresp="#s2:l1">betrachten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Van het geen kan nuttigh <rhyme label="b" type="m" corresp="#s2:l2">zyn</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">'t Welck en 't schoon der oude <rhyme label="c" type="f">lieden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Die als kinders henen <rhyme label="c" type="f" corresp="#s2:l5">vlieden</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Als me seght soo is den <rhyme label="d" type="m">wyn</rhyme>.</l>
        <l id="s2:l8" met="4" type="+-">Wyn wyn doet al vroyelyck <rhyme label="d" type="m" corresp="#s2:l7">syn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wyn heeft oock dees wonder <rhyme label="a" type="f">kracht</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Dat hy eenen geck maeckt <rhyme label="b" type="m">wys</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Wyn doet hem syn selven <rhyme label="a" type="f" corresp="#s3:l1">achten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat hy schyn niet eenen <rhyme label="b" type="m" corresp="#s3:l2">thys</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Ofte cloeten vol <rhyme label="c" type="f">ghebreken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Maer een Cicero in't <rhyme label="c" type="f" corresp="#s3:l5">spreecken</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Dit ghedacht geeft hem den <rhyme label="d" type="m">wyn</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Wyn wyn doet al vroyelyck <rhyme label="d" type="m" corresp="#s3:l7">syn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Den wyn die doet oock den <rhyme label="a" type="f">vreckáº½</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Veele geven <rhyme label="b" type="m">mildelijck</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En hy maeckt wijse de <rhyme label="a" type="f" corresp="#s4:l1">gecken</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En de arme maeckt hy <rhyme label="b" type="m" corresp="#s4:l2">ryck</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Selden sietmen aerme <rhyme label="c" type="f">schynen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Vol gedroncken van den <rhyme label="c" type="f" corresp="#s4:l5">wyn</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Wyn verdryft de aermoe <rhyme label="d" type="m">pyn</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Wyn wyn doet al vroyelyck <rhyme label="d" type="m" corresp="#s4:l7">syn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Die 'thooft heeft vol <rhyme label="a" type="f">muysenesten</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Ende oock niet slaepen <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Is den wyn ten <rhyme label="a" type="f" corresp="#s5:l1">alderbesten</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Medecyn voor sulcken <rhyme label="b" type="m" corresp="#s5:l2">man</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Edel aerme ende <rhyme label="c" type="f">rycken</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">weerelijck ende <rhyme label="c" type="f" corresp="#s5:l5">geestelyck</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Voor die groot'lycks syn in <rhyme label="d" type="m">pyn</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">wyn wyn doet 't al vroyelyck <rhyme label="d" type="m" corresp="#s5:l7">syn</rhyme>.</l>
      </lg>
    </lg>
  </text>
