    <tags>
      <tag standard-name="liefdeslied" translation="love song">liefdeslied</tag>
    </tags>
    <melody>Kom gij schone veldgodin</melody>
    <categories>
      <category translation="love and sex">liefde en seks</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIlt ghy stadigh <rhyme label="a" type="f">wederstreven</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Schoone <rhyme label="b" type="m">Harderin</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Met een opghesetten <rhyme label="b" type="m" corresp="#s1:l2">sin</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">En u niet <rhyme label="a" type="f" corresp="#s1:l1">begheven</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Tot de soete <rhyme label="b" type="m" corresp="#s1:l2">Min</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Toomt ghy dus u jonghe <rhyme label="a" type="f">Iaren</rhyme></l>
        <l id="s2:l2" met="3" type="+-">In dees lieve <rhyme label="b" type="m">tijdt</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Dat ghy soo u leven <rhyme label="b" type="m" corresp="#s2:l2">slijt</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Sonder u te <rhyme label="a" type="f" corresp="#s2:l1">paren</rhyme></l>
        <l id="s2:l5" met="3" type="+-">Met een die u <rhyme label="b" type="m" corresp="#s2:l2">vrijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sult ghy dan dees brave <rhyme label="a" type="f">Leven</rhyme></l>
        <l id="s3:l2" met="3" type="+-">En dit schoone <rhyme label="b" type="m">lijf</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Roven van zijn <rhyme label="b" type="m" corresp="#s3:l2">tijdtverdrijf</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Vol <rhyme label="a" type="f" corresp="#s3:l1">onlustigheden</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Tot onlusts <rhyme label="b" type="m" corresp="#s3:l2">gherijf</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">De on-uytspreecklijcke <rhyme label="a" type="f">gaven</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Die Natuer u <rhyme label="b" type="m">jont</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dus bedelven in de <rhyme label="b" type="m" corresp="#s4:l2">grondt</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">En in d’Aerd’ <rhyme label="a" type="f" corresp="#s4:l1">begraven</rhyme></l>
        <l id="s4:l5" met="3" type="+-">In soo korten <rhyme label="b" type="m" corresp="#s4:l2">stondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Neen, neen, wilt u doch <rhyme label="a" type="f">besinnen</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Bruycktse wijl ghy <rhyme label="b" type="m">meught</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Wanneer ‘t streckt tot eer en <rhyme label="b" type="m" corresp="#s5:l2">deught</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Ghy sult est <rhyme label="a" type="f" corresp="#s5:l1">bevinnen</rhyme></l>
        <l id="s5:l5" met="3" type="+-">In de soete <rhyme label="b" type="m" corresp="#s5:l2">vreucht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Spoed’ u, wilt niet langher <rhyme label="a" type="f">beyden</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Liefje ‘t is soo <rhyme label="b" type="m">soet</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Treedt de onlust met de <rhyme label="b" type="m" corresp="#s6:l2">voet</rhyme></l>
        <l id="s6:l4" met="3" type="+-">En wilt u <rhyme label="a" type="f" corresp="#s6:l1">bereyden</rhyme></l>
        <l id="s6:l5" met="3" type="+-">Nu ‘t soo wesen <rhyme label="b" type="m" corresp="#s6:l2">moet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
