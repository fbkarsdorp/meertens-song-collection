  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Edel wijf, uyr lieflich <rhyme label="a" type="m">oghyn</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Brenghen mir in pinen <rhyme label="b" type="m">groyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gher doyt mich diche liden <rhyme label="a" type="m" corresp="#s1:l1">doghyn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Miin hertz sterft om uch eyn <rhyme label="b" type="m" corresp="#s1:l2">doyt</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Vrouwe, das wil ich gerne <rhyme label="c" type="f">haen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">ch dench om uch in alle <rhyme label="d" type="m">stonden</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Nes nemmer als urs <rhyme label="c" type="f" corresp="#s1:l5">ermayn</rhyme></l>
        <l id="s1:l8" met="4" type="-+">En bin al gans van minen <rhyme label="d" type="m" corresp="#s1:l6">wonden</rhyme>.</l>
        <l id="s1:l9" met="4" type="+-">Mich hayt erbliit eyn <rhyme label="e" type="m">vrouwelijn</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Want yr minne gheet mir <rhyme label="f" type="f">moet</rhyme>;</l>
        <l id="s1:l11" met="4" type="-+">Dorch ze lide ich dichwile <rhyme label="e" type="m" corresp="#s1:l9">pijn</rhyme>;</l>
        <l id="s1:l12" met="4" type="-+">Was ze myr doet ich nem't voer <rhyme label="f" type="f" corresp="#s1:l10">goet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nu wil ich aventuren 't <rhyme label="a" type="m">lijf</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Da ich in prijs mach <rhyme label="b" type="m">beiaghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Op das ghir, uysercoren <rhyme label="a" type="m" corresp="#s2:l1">wijf</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Mijns mit eeren mucht <rhyme label="b" type="m" corresp="#s2:l2">ghewaghen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">In die pijn en quam ich <rhyme label="c" type="f">nye</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Noch mit zeer also <rhyme label="d" type="m">bevaen</rhyme>;</l>
        <l id="s2:l7" met="4" type="+-">Waen ich uyr lieflich oghyn <rhyme label="c" type="f" corresp="#s2:l5">zie</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Mijn drueven was tsemael <rhyme label="d" type="m" corresp="#s2:l6">ghedaen</rhyme>.</l>
        <l id="s2:l9" met="4" type="+-">Mich hayt erbliit eyn <rhyme label="e" type="m">vrouwelijn</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Want yr minne gheet mir <rhyme label="f" type="f">moet</rhyme>;</l>
        <l id="s2:l11" met="4" type="-+">Dorch ze lide ich dichwile <rhyme label="e" type="m" corresp="#s2:l9">pijn</rhyme>;</l>
        <l id="s2:l12" met="4" type="-+">Was ze myr doet ich nem't voer <rhyme label="f" type="f" corresp="#s2:l10">goet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ach, was sorghen mach hem <rhyme label="a" type="m">deren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die wives hulde erwerven <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ende mit ghenuechten dan <rhyme label="a" type="m" corresp="#s3:l1">hoveren</rhyme>?</l>
        <l id="s3:l4" met="4" type="-+">Das gheyt voer alle <rhyme label="b" type="m" corresp="#s3:l2">gout-ghespan</rhyme>!</l>
        <l id="s3:l5" met="4" type="+-">Mucht yr ende mir also <rhyme label="c" type="f">ghescien</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Die ic mit hertz haen <rhyme label="d" type="m">ercoren</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">God, zo danct ich dich van <rhyme label="c" type="f" corresp="#s3:l5">dien</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Dat ic zer werelt ye wert <rhyme label="d" type="m" corresp="#s3:l6">gheboren</rhyme>.</l>
        <l id="s3:l9" met="4" type="+-">Mich hayt erbliit eyn <rhyme label="e" type="m">vrouwelijn</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">Want yr minne gheet mir <rhyme label="f" type="f">moet</rhyme>;</l>
        <l id="s3:l11" met="4" type="-+">Dorch ze lide ich dichwile <rhyme label="e" type="m" corresp="#s3:l9">pijn</rhyme>;</l>
        <l id="s3:l12" met="4" type="-+">Was ze myr doet ich nem't voer <rhyme label="f" type="f" corresp="#s3:l10">goet</rhyme>.</l>
      </lg>
    </lg>
