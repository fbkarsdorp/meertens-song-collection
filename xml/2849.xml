  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoe mach doch Iemant hem <rhyme label="a" type="m">voerbliJden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">die sin lief moet <rhyme label="b" type="f">derven</rhyme></l>
        <l id="s1:l3" met="4" type="-+">In mijn sertein Is klein <rhyme label="a" type="m" corresp="#s1:l1">Joelit</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ick suchte meenich <rhyme label="b" type="f" corresp="#s1:l2">werve</rhyme></l>
        <l id="s1:l5" met="4" type="-+">om een alleen die Ick <rhyme label="c" type="m">bemin</rhyme></l>
        <l id="s1:l6" met="4" type="-+">iae altijt staet (sy) In mijn <rhyme label="c" type="m" corresp="#s1:l5">sin</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Sij Is diet hert <rhyme label="d" type="f">begeerde</rhyme></l>
        <l id="s1:l8" met="3" type="-+">geen liever lief op <rhyme label="d" type="f" corresp="#s1:l7">aerde</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick secht voerwaer en dunck mijn <rhyme label="a" type="m">soe</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat pijnelick Is om <rhyme label="b" type="f">smaeke</rhyme></l>
        <l id="s2:l3" met="4" type="-+">lief te derven ick doet soe <rhyme label="a" type="m" corresp="#s2:l1">noe</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Eijlaes wat wil Ick <rhyme label="b" type="f" corresp="#s2:l2">maeken</rhyme></l>
        <l id="s2:l5" met="4" type="-+">het Is mij eilaecy pijne <rhyme label="c" type="m">swaer</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Dat ick nu ben soe lange van <rhyme label="c" type="m" corresp="#s2:l5">haer</rhyme></l>
        <l id="s2:l7" met="3" type="-+">och oft haer niet en <rhyme label="d" type="f">deerde</rhyme></l>
        <l id="s2:l8" met="3" type="-+">geen liever lief op <rhyme label="d" type="f" corresp="#s2:l7">aerde</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Noeit hadde paerijs alsoe <rhyme label="a" type="m">lief</rhyme></l>
        <l id="s3:l2" met="3" type="-+">heelenae soe Ick <rhyme label="b" type="f">meine</rhyme></l>
        <l id="s3:l3" met="4" type="-+">noeit leander soe voer <rhyme label="a" type="m" corresp="#s3:l1">hief</rhyme></l>
        <l id="s3:l4" met="3" type="-+">heeroe dat eedele <rhyme label="b" type="f" corresp="#s3:l2">greine</rhyme></l>
        <l id="s3:l5" met="4" type="-+">het Is haer voerwaer wel <rhyme label="c" type="m">bekent</rhyme></l>
        <l id="s3:l6" met="4" type="-+">nochtans soe laet sij min Int <rhyme label="c" type="m" corresp="#s3:l5">torment</rhyme></l>
        <l id="s3:l7" met="3" type="-+">haer houde Ick In <rhyme label="d" type="f">waerde</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Geen liever lief op <rhyme label="d" type="f" corresp="#s3:l7">aerde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Prinse prinsesse al <rhyme label="a" type="m">gelick</rhyme></l>
        <l id="s4:l2" met="3" type="-+">mocht Ick haer lief voer <rhyme label="b" type="f">krijgen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">geen mens mocht mijn weesen te <rhyme label="a" type="m" corresp="#s4:l1">rijck</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Certein Ick derft niet <rhyme label="b" type="f" corresp="#s4:l2">swijgen</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Ick acht veel meer dat maechdelinck <rhyme label="c" type="m">vat</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Dan samsoms eer of kreesyes <rhyme label="c" type="m" corresp="#s4:l5">schat</rhyme></l>
        <l id="s4:l7" met="3" type="-+">sij mach mijn vruecht voer <rhyme label="d" type="f">meeren</rhyme></l>
        <l id="s4:l8" met="3" type="-+">geen liever lief op <rhyme label="d" type="f" corresp="#s4:l7">aerde</rhyme>.</l>
      </lg>
    </lg>
