<song>
  <meta>
    <id>4259</id>
    <date>
      <year-start>1602</year-start>
      <year-end>1602</year-end>
    </date>
    <tags>
      <tag standard-name="liefdeslied" translation="love song">liefdeslied</tag>
      <tag standard-name="acrostichon" translation="acrostic song">acrostichon</tag>
    </tags>
    <melody>Ik peins om een persoon</melody>
    <categories>
      <category translation="love and sex">liefde en seks</category>
      <category translation="formal genres">formele genres</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GRatieuste <rhyme label="a" type="f">divyne</rhyme> //</l>
        <l id="s1:l2" met="3" type="-+">Reyn overschoncken <rhyme label="b" type="m">vat</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Mijn leuen is sonder <rhyme label="a" type="f" corresp="#s1:l1">u</rhyme> //</l>
        <l id="s1:l4" met="3" type="-+">Schoon pretieuste mij- <rhyme label="b" type="m" corresp="#s1:l2">ne</rhyme> //</l>
        <l id="s1:l5" met="4" type="+-">Eerbaer besloten <rhyme label="c" type="m">schat</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Mijn leuen is sonder <rhyme label="c" type="m" corresp="#s1:l5">u</rhyme> //</l>
        <l id="s1:l7" met="2" type="-+">Een drouven <rhyme label="d" type="m">strijt</rhyme> //</l>
        <l id="s1:l8" met="2" type="-+"><rhyme label="d" type="m" corresp="#s1:l7">vermaledijt</rhyme> //</l>
        <l id="s1:l9" met="3" type="-+">Dus wilt my troosten <rhyme label="c" type="m" corresp="#s1:l5">nu</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">EEr ick wijder <rhyme label="a" type="f">verdwale</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van u genade <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Aensiet (reyne <rhyme label="a" type="f" corresp="#s2:l1">vestale</rhyme>)</l>
        <l id="s2:l4" met="3" type="-+">Mijn deligent <rhyme label="b" type="m" corresp="#s2:l2">oodtmoet</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Waer by ick ten eynde <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Waer by ick ten eynde <rhyme label="c" type="m" corresp="#s2:l5">sal</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Blijven, of <rhyme label="d" type="m">schoon</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Al mijnen <rhyme label="d" type="m" corresp="#s2:l7">loon</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Wert druck en <rhyme label="c" type="m" corresp="#s2:l5">ongeval</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Tot u O <rhyme label="a" type="f">troosterinne</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Is mijn toevlucht <rhyme label="b" type="m">geheel</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Bedrouft, ick haest <rhyme label="a" type="f" corresp="#s3:l1">ontsinne</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wert ghy mijn <rhyme label="b" type="m" corresp="#s3:l2">tegendeel</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Maer naer u genade <rhyme label="c" type="m">bloot</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Maer naer u genade <rhyme label="c" type="m" corresp="#s3:l5">bloot</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Bluscht mijn <rhyme label="d" type="m">gepijn</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Sonder te <rhyme label="d" type="m" corresp="#s3:l7">zijn</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Oorsake van mijn <rhyme label="c" type="m" corresp="#s3:l5">doot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Raect ghy (met u <rhyme label="a" type="f">ontfermen</rhyme>)</l>
        <l id="s4:l2" met="3" type="-+">Mijn troosteloos <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ben ick in u <rhyme label="a" type="f" corresp="#s4:l1">beschermen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Deur u minsaem <rhyme label="b" type="m" corresp="#s4:l2">gebiet</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Mijn doleur is dan <rhyme label="c" type="m">geendt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Mijn doleur is dan <rhyme label="c" type="m" corresp="#s4:l5">geendt</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">O soete <rhyme label="d" type="m">fleur</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Dijn <rhyme label="d" type="m" corresp="#s4:l7">serviteur</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Te zijn, my weerdich <rhyme label="c" type="m" corresp="#s4:l5">kent</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">V lief, en anders <rhyme label="a" type="f">geene</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Min ick mijns levens <rhyme label="b" type="m">tijt</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Gemerct dat ghy <rhyme label="a" type="f" corresp="#s5:l1">alleene</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Den troost der herten <rhyme label="b" type="m" corresp="#s5:l2">zijt</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Soud' ick niet van uwer <rhyme label="c" type="m">hant</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Soud' ick niet van uwer <rhyme label="c" type="m" corresp="#s5:l5">hant</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Verwachten <rhyme label="d" type="m">voort</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">(By goet <rhyme label="d" type="m" corresp="#s5:l7">accoort</rhyme>)</l>
        <l id="s5:l9" met="3" type="-+">Genadigh <rhyme label="c" type="m" corresp="#s5:l5">onderstant</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Iemant mocht my <rhyme label="a" type="f">benijden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">In desen mijnen <rhyme label="b" type="m">staet</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Haten, ende <rhyme label="a" type="f" corresp="#s6:l1">bestrijden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Alst my ten boosten <rhyme label="b" type="m" corresp="#s6:l2">gaet</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">T'sulcker noot wilt wesen <rhyme label="c" type="m">dan</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">T'sulcker noot wilt wesen <rhyme label="c" type="m" corresp="#s6:l5">dan</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Mijn troost <rhyme label="d" type="m">certeyn</rhyme>:</l>
        <l id="s6:l8" met="2" type="-+">Dat geen <rhyme label="d" type="m" corresp="#s6:l7">vileyn</rhyme></l>
        <l id="s6:l9" met="3" type="-+">My geensins schaden <rhyme label="c" type="m" corresp="#s6:l5">can</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus is mijn hert <rhyme label="a" type="f">volveerdigh</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In als seer wel <rhyme label="b" type="m">bereet</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">In uwen naem <rhyme label="a" type="f" corresp="#s7:l1">eerweerdigh</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Te dragen alle <rhyme label="b" type="m" corresp="#s7:l2">leet</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">Met sulck een betrouwen <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Met sulck een betrouwen <rhyme label="c" type="m" corresp="#s7:l5">groot</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Dat ghy my <rhyme label="d" type="m">eens</rhyme></l>
        <l id="s7:l8" met="2" type="-+">(Naer veel <rhyme label="d" type="m" corresp="#s7:l7">geweens</rhyme>)</l>
        <l id="s7:l9" met="3" type="-+">Sult bringen wt den <rhyme label="c" type="m" corresp="#s7:l5">noot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Troostbare, vroom <rhyme label="a" type="f">Princesse</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">My (uwen <rhyme label="b" type="m">suppliant</rhyme>)</l>
        <l id="s8:l3" met="3" type="-+">Bewijst u <rhyme label="a" type="f" corresp="#s8:l1">gentilesse</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">In deser minnen <rhyme label="b" type="m" corresp="#s8:l2">brant</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">Soo dat ick sonder <rhyme label="c" type="m">bedwanck</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Soo dat ick sonder <rhyme label="c" type="m" corresp="#s8:l5">bedwanck</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Met grooter <rhyme label="d" type="m">vreught</rhyme></l>
        <l id="s8:l8" met="2" type="-+">Mach zijn <rhyme label="d" type="m" corresp="#s8:l7">verheught</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Alle mijn leuen <rhyme label="c" type="m" corresp="#s8:l5">lanck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
