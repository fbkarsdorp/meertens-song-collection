    <melody>Och ik mag wel droevig schreien</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">GOdheyd, die u hier komt <rhyme label="a" type="f">toonen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Onder dees' ghedaenten <rhyme label="a" type="f" corresp="#s1:l1">vvoonen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ick aen-bid u met <rhyme label="b" type="m">ood-moedt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Myn hert' u den voet-val <rhyme label="b" type="m" corresp="#s1:l3">doet</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Want als ick op u gae <rhyme label="c" type="f">peysen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Moet myn hert' door swackheyd <rhyme label="c" type="f" corresp="#s1:l5">deysen</rhyme>;</l>
        <l id="s1:l7" met="4" type="+-">Midts het niet be-quaem en <rhyme label="d" type="m">is</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Tot sulck-een <rhyme label="d" type="m" corresp="#s1:l7">gheheymenis'</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Smaecken, sien, en het <rhyme label="a" type="f">aen-raecken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Zyn in u gheloghen <rhyme label="a" type="f" corresp="#s2:l1">saecken</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Maer 't ghehoor dat maeckt ons <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Door 't gheloof, 't vvelck hier toe <rhyme label="b" type="m" corresp="#s2:l3">past</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ick gheloof, sonder <rhyme label="c" type="f">ver-legghen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Wat Gods Soôn oyt quam te <rhyme label="c" type="f" corresp="#s2:l5">segghen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Die de eyghen vvaerheyd <rhyme label="d" type="m">is</rhyme>:</l>
        <l id="s2:l8" met="4" type="+-">Want syn vvoorden zyn <rhyme label="d" type="m" corresp="#s2:l7">ghewis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Alleen 's Godheyds glans <rhyme label="a" type="f">be-hanghen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Was aen 't kruys; hier is <rhyme label="a" type="f" corresp="#s3:l1">om-vanghen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Oock uw' Menscheyd; niet te <rhyme label="b" type="m">min</rhyme></l>
        <l id="s3:l4" met="4" type="+-">'k Gheloov' sy beyde zyn hier <rhyme label="b" type="m" corresp="#s3:l3">in</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Maer soo ick gheloov' dees' <rhyme label="c" type="f">saecken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Laet my eens op 't lest <rhyme label="c" type="f" corresp="#s3:l5">gheraecken</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Daer ghy brocht den <rhyme label="d" type="m">Moordenaer</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">By uw' vrienden al te <rhyme label="d" type="m" corresp="#s3:l7">gaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ick en taste niet uw' <rhyme label="a" type="f">syde</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Ghelyck Thomas, doch <rhyme label="a" type="f" corresp="#s4:l1">be-lyde</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Dat ghy hier zyt mynen <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">All' myn hoôp, en eenigh <rhyme label="b" type="m" corresp="#s4:l3">lot</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Maer vvilt op myn bede <rhyme label="c" type="f">passen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Myn gheloof laet al-tyd <rhyme label="c" type="f" corresp="#s4:l5">vvassen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Dat ick u, ô liefsten <rhyme label="d" type="m">Heer</rhyme>!</l>
        <l id="s4:l8" met="4" type="+-">Magh be-minnen meer en <rhyme label="d" type="m" corresp="#s4:l7">meer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">O die ons al doet <rhyme label="a" type="f">ghedencken</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Wat ons Christus hier quam <rhyme label="a" type="f" corresp="#s5:l1">schencken</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Die ghestorven is de <rhyme label="b" type="m">dood</rhyme>!</l>
        <l id="s5:l4" met="4" type="+-">Ghy, die zyt het levend' <rhyme label="b" type="m" corresp="#s5:l3">brood</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Die de menschen all' doet <rhyme label="c" type="f">leven</rhyme>;</l>
        <l id="s5:l6" met="4" type="+-">Wilt my toch dit voor-deel <rhyme label="c" type="f" corresp="#s5:l5">gheven</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Dat myn siel' in uwen <rhyme label="d" type="m">smaeck</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Al-tyd neem' al haer <rhyme label="d" type="m" corresp="#s5:l7">ver-maeck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Pellikaen vol van <rhyme label="a" type="f">ghenaeden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Tot u komen vvy <rhyme label="a" type="f" corresp="#s6:l1">be-laeden</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Jesus, met uw dierbaer <rhyme label="b" type="m">bloed</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Suyvert ons on-reyn <rhyme label="b" type="m" corresp="#s6:l3">ghemoed</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Want een druppel kan <rhyme label="c" type="f">af-wasschen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">All' des vverelds vuyle <rhyme label="c" type="f" corresp="#s6:l5">plasschen</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Van de sonden groot en <rhyme label="d" type="m">kleyn</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Maeckt dit bloed de menschen <rhyme label="d" type="m" corresp="#s6:l7">reyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Jesus die ick sie <rhyme label="a" type="f">ver-nepen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">In soo kleyne rond <rhyme label="a" type="f" corresp="#s7:l1">be-grepen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Ick bid u, my dit <rhyme label="b" type="m">ghedooght</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Daer myn hert soo seer naer <rhyme label="b" type="m" corresp="#s7:l3">pooght</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Dat ick u magh in den <rhyme label="c" type="f">Hemel</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Soo aen-schou wen sonder <rhyme label="c" type="f" corresp="#s7:l5">schemel</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Ghelyck ghy u daer <rhyme label="d" type="m">ver-toont</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Waer med' ghy uw' dienaers <rhyme label="d" type="m" corresp="#s7:l7">loont</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
