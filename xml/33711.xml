  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs Iesus met sijn <rhyme label="a" type="f">kraghte</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En Goddelijke <rhyme label="a" type="f" corresp="#s1:l1">maghte</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De steken al <rhyme label="b" type="m">genas</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">De Duyvelen deed' <rhyme label="c" type="f">vlughte</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Uyt menschen in de <rhyme label="c" type="f" corresp="#s1:l4">lughte</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Daer eenen man by <rhyme label="b" type="m" corresp="#s1:l3">was</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die seyde, ik wil <rhyme label="a" type="f">meede</rhyme></l>
        <l id="s2:l2" met="3" type="-+">U volgen t'alle <rhyme label="a" type="f" corresp="#s2:l1">steede</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Maer Iesus tot hem <rhyme label="b" type="m">seydt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De Vogels hebben <rhyme label="c" type="f">nesten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Voor mijn is niet ten <rhyme label="c" type="f" corresp="#s2:l4">besten</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Daer mijn hooft wat op <rhyme label="b" type="m" corresp="#s2:l3">leydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer tot een ander <rhyme label="a" type="f">seyde</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hy met seer goedt <rhyme label="a" type="f" corresp="#s3:l1">bescheyde</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Komt gy, en volght mijn <rhyme label="b" type="m">naer</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Toen antwoorden die <rhyme label="c" type="f">geene</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Laet ik nogh eens gaen <rhyme label="c" type="f" corresp="#s3:l4">heene</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Begraven mijnen <rhyme label="b" type="m" corresp="#s3:l3">VaÃªr</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En Jesus seydt tot <rhyme label="a" type="f">deesen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat hoef soo niet te <rhyme label="a" type="f" corresp="#s4:l1">weesen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Volght gy mijn <rhyme label="b" type="m">datelijk</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">De dooden laet haer <rhyme label="c" type="f">dooden</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Begraven, is 't van <rhyme label="c" type="f" corresp="#s4:l4">nooden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Verkondight gy Goodts <rhyme label="b" type="m" corresp="#s4:l3">Rijk</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een ander seyde, <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Laet ik nogh eens t'Huys <rhyme label="a" type="f" corresp="#s5:l1">keere</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Bestellen daer mijn <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat ik dat <rhyme label="c" type="f">overgeeven</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Aen Vrienden en aen <rhyme label="c" type="f" corresp="#s5:l4">Neeven</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En komen dan met <rhyme label="b" type="m" corresp="#s5:l3">spoedt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer Jesus seydt, die <rhyme label="a" type="f">geene</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die wel te ploegen <rhyme label="a" type="f" corresp="#s6:l1">meene</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En kijken aghter <rhyme label="b" type="m">om</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die is ook niet <rhyme label="c" type="f">bequame</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Goods Rijke te <rhyme label="c" type="f" corresp="#s6:l4">berame</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Of dat hy daer in <rhyme label="b" type="m" corresp="#s6:l3">kom</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Heer, wilt ons niet <rhyme label="a" type="f">versmaden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Maer roept ons op uw <rhyme label="a" type="f" corresp="#s7:l1">paden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En laet ons hier niet <rhyme label="b" type="m">staen</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">Maer liever wilt ons <rhyme label="c" type="f">trecken</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En deught in ons <rhyme label="c" type="f" corresp="#s7:l4">verwecken</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Op dat wy met u <rhyme label="b" type="m" corresp="#s7:l3">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
