  <author>Joseph Sadones</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">TOt Brussel is een <rhyme label="a" type="m">magazyn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">van nieuwe moden groot en <rhyme label="a" type="m" corresp="#s1:l1">kleyn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">courage meyskens, wilt u <rhyme label="b" type="m">spoen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">hebt gy maer iet of wat van <rhyme label="b" type="m" corresp="#s1:l3">doen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">komt geloopen, wilt gy <rhyme label="c" type="f">koopen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">van den avond tot den <rhyme label="b" type="m" corresp="#s1:l3">noen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Eerst schoenen van alle <rhyme label="a" type="m">couleur</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">met lange tippen aen van <rhyme label="a" type="m" corresp="#s2:l1">veur</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">koussen met roode klinken <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">die jongmans aenlokken tot <rhyme label="b" type="m" corresp="#s2:l3">min</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">die schoone beenen, doen jongmans <rhyme label="c" type="f">meenen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">dat-ze staen vast in uwen <rhyme label="b" type="m" corresp="#s2:l3">zin</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den zwarten rok die ziet men <rhyme label="a" type="m">ook</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">die maekt u een bevallig <rhyme label="a" type="m" corresp="#s3:l1">spook</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">met daer een schoon wit jaksken <rhyme label="b" type="m">op</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">maekt u een lieve <rhyme label="b" type="m" corresp="#s3:l3">mode-pop</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">gy draegt van vooren, om te <rhyme label="c" type="f">bekooren</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">aen uw chemise of jak een <rhyme label="b" type="m" corresp="#s3:l3">strop</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En zyt gy van uw hair <rhyme label="a" type="m">berooft</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">gy draegt een schoon calotje op 't <rhyme label="a" type="m" corresp="#s4:l1">hoofd</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">hebt gy ros hair, misstaet u <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">met een calot niemand die 't <rhyme label="b" type="m" corresp="#s4:l3">ziet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">gy kond uw vlekken, daer med' <rhyme label="c" type="f">bedekken</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">merkt nog voorders wat men <rhyme label="b" type="m" corresp="#s4:l3">bedied</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De krullekens maeken u <rhyme label="a" type="m">braf</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">van weer zyden uw kaeken <rhyme label="a" type="m" corresp="#s5:l1">af</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Pier met zynen dikken <rhyme label="b" type="m">crawat</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">die zegt parbleu, hoe schoon is <rhyme label="b" type="m" corresp="#s5:l3">dat</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">die dit kan draegen, in deÃªs <rhyme label="c" type="f">daegen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">worden voor nieuwe ryke <rhyme label="b" type="m" corresp="#s5:l3">geschat</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">In 't magasyn is veel te <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">van avond, morgen tot den <rhyme label="a" type="m" corresp="#s6:l1">noen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">in het jaer honderd of 't jaer <rhyme label="b" type="m">acht</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">komt'er al weer een ander <rhyme label="b" type="m" corresp="#s6:l3">dragt</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">is dit een loogen ik ben <rhyme label="c" type="f">bedroogen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">maer het word van vele <rhyme label="b" type="m" corresp="#s6:l3">verwagt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
