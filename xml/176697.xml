  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heer laet eens u goetheyt <rhyme label="a" type="f">blijcken</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Aenhoort dien stem, die voor u <rhyme label="b" type="m">leyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Aenschout de tranen die hy <rhyme label="b" type="m" corresp="#s1:l2">schreyt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ach! laet mijn niet in droefheyt <rhyme label="a" type="f" corresp="#s1:l1">wijcken</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Veel min <rhyme label="a" type="f" corresp="#s1:l1">beswijcken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick biecht voor u mijn groote <rhyme label="a" type="f">zonden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die meerder zijn als ‘t zant der <rhyme label="b" type="m">Zee</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hierom is my, mijn hert so <rhyme label="b" type="m" corresp="#s2:l2">wee</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Mijn af-gronts quaet is niet te <rhyme label="a" type="f" corresp="#s2:l1">gronden</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Veel min <rhyme label="a" type="f" corresp="#s2:l1">ghevonden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">‘t Is recht dat ick steets hoor te <rhyme label="a" type="f">truyren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">En nimmermeer gheen troost en <rhyme label="b" type="m">voel</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Maer altijdt in mijn droefheyt <rhyme label="b" type="m" corresp="#s3:l2">woel</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">O Heer wilt dan mijn rouw <rhyme label="a" type="f" corresp="#s3:l1">bestuyren</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">En ‘t quaedt <rhyme label="a" type="f" corresp="#s3:l1">uyt-puyren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ach! die door graey steeds mocht <rhyme label="a" type="f">weenen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">En tranen zayen over <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hier in dit truyrigh <rhyme label="b" type="m" corresp="#s4:l2">kjammer-dal</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Want al mijn tijt is schier daer <rhyme label="a" type="f" corresp="#s4:l1">heenen</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">En haest <rhyme label="a" type="f" corresp="#s4:l1">verdweenen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Heer wilt mijn ghebedt <rhyme label="a" type="f">verhooren</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ghedenckt doch aen u Out <rhyme label="b" type="m">verbondt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Vernielt mijn oudt en nieuwe <rhyme label="b" type="m" corresp="#s5:l2">zondt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Wildt d’oorsaeck Heer van dien <rhyme label="a" type="f" corresp="#s5:l1">verstooren</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">En gantsch <rhyme label="a" type="f" corresp="#s5:l1">versmooren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ach! waer mijn ‘t steenen hert <rhyme label="a" type="f">benomen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Daer niet als zondt op zondt <rhyme label="b" type="m">uyt-weldt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">In plaets van dien weer zijn <rhyme label="b" type="m" corresp="#s6:l2">ghestelt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Een hert daer uyt niets voort soudt <rhyme label="a" type="f" corresp="#s6:l1">komen</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Dan ‘s levens <rhyme label="a" type="f" corresp="#s6:l1">stromen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Heer hoe lang sult ghy noch <rhyme label="a" type="f">toeven</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Ontfermt u door u <rhyme label="b" type="m">goedigheydt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Waerom doch Heer so langh <rhyme label="b" type="m" corresp="#s7:l2">ghebeyt</rhyme>?</l>
        <l id="s7:l4" met="4" type="-+">Ghy weet seer wel mijn groot <rhyme label="a" type="f" corresp="#s7:l1">behoeven</rhyme></l>
        <l id="s7:l5" met="2" type="-+">En swaer <rhyme label="a" type="f" corresp="#s7:l1">bedroeven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laet eens u mijnlijck aenschijn <rhyme label="a" type="f">schijnen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Daer ick soo langh om heb <rhyme label="b" type="m">ghesucht</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En ‘t herdt al steedts mee is <rhyme label="b" type="m" corresp="#s8:l2">bevrucht</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Gheneest mijn geest eens van sijn <rhyme label="a" type="f" corresp="#s8:l1">quijnen</rhyme></l>
        <l id="s8:l5" met="2" type="-+">En al sijn <rhyme label="a" type="f" corresp="#s8:l1">pijnen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">‘t Is waer, d’ootmoet die spreekt mijn <rhyme label="a" type="f">tegen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dat ick soo grooten saeck <rhyme label="b" type="m">begeer</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Maer denck doch eens, o lieve <rhyme label="b" type="m" corresp="#s9:l2">Heer</rhyme>!</l>
        <l id="s9:l4" met="4" type="-+">Hoe dat ick altijdt gae <rhyme label="a" type="f" corresp="#s9:l1">verleghen</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">In al mijn <rhyme label="a" type="f" corresp="#s9:l1">weghen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wat vrugten sal mijn boom doch <rhyme label="a" type="f">dragen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">So hy van u niet wordt <rhyme label="b" type="m">ge-endt</rhyme>?</l>
        <l id="s10:l3" met="4" type="-+">Slechs wilt en quaet tot in mijn <rhyme label="b" type="m" corresp="#s10:l2">endt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Hoe soud’ ick dan niet droevigh <rhyme label="a" type="f" corresp="#s10:l1">klaghen</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">En u Heer <rhyme label="a" type="f" corresp="#s10:l1">vraghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O Heer, wanneer! ik kant niet <rhyme label="a" type="f">heelen</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Sult ghy eens toonen dat ghy <rhyme label="b" type="m">bent</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Een Trooster in mijn langh <rhyme label="b" type="m" corresp="#s11:l2">ellendt</rhyme>?</l>
        <l id="s11:l4" met="4" type="-+">Laet doch mijn roepen en mijn <rhyme label="a" type="f" corresp="#s11:l1">quelen</rhyme></l>
        <l id="s11:l5" met="2" type="-+">U eens <rhyme label="a" type="f" corresp="#s11:l1">vervelen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ick soeck geen schat, nochlang te <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Noch wellust, eer, noch werelts <rhyme label="b" type="m">pracht</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Maer een reyn hert dat op u <rhyme label="b" type="m" corresp="#s12:l2">acht</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Daer al u Wet, deur Liefd’ <rhyme label="a" type="f" corresp="#s12:l1">ghedreven</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Is in <rhyme label="a" type="f" corresp="#s12:l1">gheschreven</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Op dat ik ‘t goet om ‘t goet mag <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">En leef in deught om eedle <rhyme label="b" type="m">deught</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Want desen gront baer enckel <rhyme label="b" type="m" corresp="#s13:l2">vreught</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">O Heer! vernieut eens al mijn <rhyme label="a" type="f" corresp="#s13:l1">sinnen</rhyme>,</l>
        <l id="s13:l5" met="2" type="-+">Om u te <rhyme label="a" type="f" corresp="#s13:l1">winnen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">‘t Valt dan niet swaer, al ‘t quaet te <rhyme label="a" type="f">laten</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Te haten sond met vollen <rhyme label="b" type="m">haet</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Want zondt is in hem selven <rhyme label="b" type="m" corresp="#s14:l2">quaet</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Maer d’eyghen liefd’ kan ‘t nimmer <rhyme label="a" type="f" corresp="#s14:l1">vaten</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">De zondt te <rhyme label="a" type="f" corresp="#s14:l1">haten</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dan sal ick niet meer <rhyme label="a" type="f">murmureeren</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">In ‘t geen dat ghy mijn over <rhyme label="b" type="m">sendt</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Want hoe men ‘t keert of hoe men ‘t <rhyme label="b" type="m" corresp="#s15:l2">wendt</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Wie ‘t anders wil, soeckt u te <rhyme label="a" type="f" corresp="#s15:l1">leeren</rhyme>,</l>
        <l id="s15:l5" met="2" type="-+">En u te <rhyme label="a" type="f" corresp="#s15:l1">weeren</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Gy wordt beschuldigt deur mijn <rhyme label="a" type="f">daden</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Wanneer ick onverduldigh <rhyme label="b" type="m">ben</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Dan toon ick, dat ick u niet <rhyme label="b" type="m" corresp="#s16:l2">ken</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Al swijghendt gae ick u <rhyme label="a" type="f" corresp="#s16:l1">versmaden</rhyme></l>
        <l id="s16:l5" met="2" type="-+">In al u <rhyme label="a" type="f" corresp="#s16:l1">raden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Mijn waerheyt leert u <rhyme label="a" type="f">onbedroghen</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Mijn wijsheyt die is wijs <rhyme label="b" type="m">ghenoegh</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">In al het gheen ick u <rhyme label="b" type="m" corresp="#s17:l2">toe-voegh</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Want ‘t is tot u profijt <rhyme label="a" type="f" corresp="#s17:l1">ghewoghen</rhyme>,</l>
        <l id="s17:l5" met="2" type="-+">Nae u <rhyme label="a" type="f" corresp="#s17:l1">vermoghen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Mijn liefd’, en trou, spreekt <rhyme label="a" type="f">overvloedig</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">In al mijn wercken <rhyme label="b" type="m">openbaer</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Ghelooft, betrouwt mijn <rhyme label="b" type="m" corresp="#s18:l2">allegaer</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Ick vraegh: ben ick niet al <rhyme label="a" type="f" corresp="#s18:l1">t’ootmoedigh</rhyme>,</l>
        <l id="s18:l5" met="2" type="-+">En al te <rhyme label="a" type="f" corresp="#s18:l1">goedigh</rhyme>?</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">En ben ik ook u Heer <rhyme label="a" type="f">Almachtigh</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Die ‘t alles heeft in sijnder <rhyme label="b" type="m">handt</rhyme>?</l>
        <l id="s19:l3" met="4" type="-+">Is dit dan niet een groote <rhyme label="b" type="m" corresp="#s19:l2">schant</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Dat ghy mijn schickingh hout <rhyme label="a" type="f" corresp="#s19:l1">verdachtigh</rhyme></l>
        <l id="s19:l5" met="2" type="-+">En <rhyme label="a" type="f" corresp="#s19:l1">onwaerachtigh</rhyme>?</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">O Heer verlost ons van ons <rhyme label="a" type="f">quaden</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Ons quaet is overmaten <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Dit baert een onbekende <rhyme label="b" type="m" corresp="#s20:l2">noot</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Ach! wilt ons van ons last <rhyme label="a" type="f" corresp="#s20:l1">ontladen</rhyme>,</l>
        <l id="s20:l5" met="2" type="-+">Deur u <rhyme label="a" type="f" corresp="#s20:l1">ghenaden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
