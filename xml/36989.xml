  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IN d'eeuw die wy <rhyme label="a" type="f">beleven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En geeft-men niet voor <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die kryghen wilt moet <rhyme label="a" type="f" corresp="#s1:l1">gheven</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ghelyck-men heden <rhyme label="b" type="m" corresp="#s1:l2">siet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Beminnen wy <rhyme label="c" type="f">malkander</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Geeft d'een hert voor het <rhyme label="c" type="f" corresp="#s1:l5">ander</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Mindt die u liefde <rhyme label="b" type="m" corresp="#s1:l2">biedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O Steven lieven <rhyme label="a" type="f">Steven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ick ben van goeden <rhyme label="b" type="m">sin</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Om u myn Trouw te <rhyme label="a" type="f" corresp="#s2:l1">gheven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En oock myn <rhyme label="b" type="m" corresp="#s2:l2">weder-min</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Ick gheef u 't ja woordt <rhyme label="c" type="f">heden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ick ben met u te <rhyme label="c" type="f" corresp="#s2:l5">vreden</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Myn soete Wafel <rhyme label="b" type="m" corresp="#s2:l2">Kin</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Soo sal 't u dan <rhyme label="a" type="f">believen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Eer dat ick van u <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Te gheven Schepen <rhyme label="a" type="f" corresp="#s3:l1">brieven</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met groote Seghels <rhyme label="b" type="m" corresp="#s3:l2">aen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">'k Wil daer van brieven <rhyme label="c" type="f">erven</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Voor leven, ende <rhyme label="c" type="f" corresp="#s3:l5">sterven</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Op dat ick vast magh <rhyme label="b" type="m" corresp="#s3:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Men geeft daer van geen <rhyme label="a" type="f">Brieven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat is maer <rhyme label="b" type="m">quent-cout</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Want Lieven blyven <rhyme label="a" type="f" corresp="#s4:l1">Lieven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als sy eens zyn <rhyme label="b" type="m" corresp="#s4:l2">ghetrouwt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Ghy sult myn trouw <rhyme label="c" type="f">verwerven</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Wy sullen Lieven <rhyme label="c" type="f" corresp="#s4:l5">sterven</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Daer van en is geen <rhyme label="b" type="m" corresp="#s4:l2">fout</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo blyf ick uwen <rhyme label="a" type="f">dienaer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Daer ick u dienen <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En uwen trouwen <rhyme label="a" type="f" corresp="#s5:l1">Minnaer</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En twyffelt daer niet <rhyme label="b" type="m" corresp="#s5:l2">van</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Daer is myn handt op <rhyme label="c" type="f">trouwe</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ick neem u voor myn <rhyme label="c" type="f" corresp="#s5:l5">Vrouwe</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Neemt my voor uwen <rhyme label="b" type="m" corresp="#s5:l2">Man</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sa laet ons Bruyloft <rhyme label="a" type="f">houwen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Want wy zyn nu <rhyme label="b" type="m">ghetrouwt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Noodt Mannen ende <rhyme label="a" type="f" corresp="#s6:l1">Vrouwen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Noodt Vrinden jongh en <rhyme label="b" type="m" corresp="#s6:l2">out</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Laet ons de trouw <rhyme label="c" type="f">besproeyen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Laet ons het Vat doen <rhyme label="c" type="f" corresp="#s6:l5">bloeyen</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Het is soo goeden <rhyme label="b" type="m" corresp="#s6:l2">Mout</rhyme>.</l>
      </lg>
    </lg>
  </text>
