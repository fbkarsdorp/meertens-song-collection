  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ghy deed’ een Liedt <rhyme label="a" type="f">verwachten</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Vriend’lijck van mijner <rhyme label="b" type="m">hant</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat bleef in mijn <rhyme label="a" type="f" corresp="#s1:l1">ghedachten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ghestadich vast <rhyme label="b" type="m" corresp="#s1:l2">gheplant</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Hoort wat ick met dit <rhyme label="c" type="m">Liedt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Te dichten sal <rhyme label="d" type="f">voortbringhen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">T’zijn wonderlijcke <rhyme label="d" type="f" corresp="#s1:l6">dinghen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Deur den Soon Gods <rhyme label="c" type="m" corresp="#s1:l5">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Recht quam hy by t’onser <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En heeft sijns Vaders <rhyme label="b" type="m">Rijck</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Om onsent wil <rhyme label="a" type="f" corresp="#s2:l1">verlaten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Werdt arm en <rhyme label="b" type="m" corresp="#s2:l2">jammerlijck</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wy moeten oock <rhyme label="c" type="m">subijt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Om sijnent wil <rhyme label="d" type="f">begheven</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dees Weerelt hoogh <rhyme label="d" type="f" corresp="#s2:l6">verheven</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Haer rijckdom en <rhyme label="c" type="m" corresp="#s2:l5">jolijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Iae hy daelde <rhyme label="a" type="f">dienstbaerlijck</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Was Heer, en werdt een <rhyme label="b" type="m">knecht</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Nam aen den arbeydt <rhyme label="a" type="f" corresp="#s3:l1">swaerlijck</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dat hy ons brocht te <rhyme label="b" type="m" corresp="#s3:l2">recht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Och wy moeten oock <rhyme label="c" type="m">fijn</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Hem dienen al ons <rhyme label="d" type="f">daghen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Nae sijn goet wel <rhyme label="d" type="f" corresp="#s3:l6">behaghen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Soo wy sijn Ionghers <rhyme label="c" type="m" corresp="#s3:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En hy quam ons te <rhyme label="a" type="f">goede</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Met sijnen rijckdom <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Nam aen hem die <rhyme label="a" type="f" corresp="#s4:l1">armoede</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Verscheen ons naeckt en <rhyme label="b" type="m" corresp="#s4:l2">bloot</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Och wy moeten <rhyme label="c" type="m">bequaem</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Alhier op deser <rhyme label="d" type="f">erden</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Om sijnent wil arm <rhyme label="d" type="f" corresp="#s4:l6">werden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Alst hem is <rhyme label="c" type="m" corresp="#s4:l5">aenghenaem</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Tot kranckheyt is hy <rhyme label="a" type="f">comen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die machtich was en <rhyme label="b" type="m">sterck</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">D’onse op hem <rhyme label="a" type="f" corresp="#s5:l1">ghenomen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">T’was een barmhertich <rhyme label="b" type="m" corresp="#s5:l2">werck</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Wy moeten even <rhyme label="c" type="m">stijf</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Die swacke leden <rhyme label="d" type="f">draghen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Naer’t Goddelijck <rhyme label="d" type="f" corresp="#s5:l6">behaghen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">In alle ons <rhyme label="c" type="m" corresp="#s5:l5">bedrijf</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ruste in grooter <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Maer hy nam op hem <rhyme label="b" type="m">smaet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Onse eer te <rhyme label="a" type="f" corresp="#s6:l1">vermeeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Al nae sijns Vaders <rhyme label="b" type="m" corresp="#s6:l2">raet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Wy moeten s’weerelts <rhyme label="c" type="m">eer</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Om sijnent wille <rhyme label="d" type="f">mijden</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ons niet daer in <rhyme label="d" type="f" corresp="#s6:l6">verblijden</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Hem volghen even <rhyme label="c" type="m" corresp="#s6:l5">seer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En doe nu Christus <rhyme label="a" type="f">daelde</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Wijs zijnde, werdt <rhyme label="b" type="m">veracht</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Doe hy ons schuldt <rhyme label="a" type="f" corresp="#s7:l1">betaelde</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Bespot van dat <rhyme label="b" type="m" corresp="#s7:l2">gheslacht</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Acht men ons oock voor <rhyme label="c" type="m">sot</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Laet u dat niet <rhyme label="d" type="f">verdrieten</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Als ghy dit moet <rhyme label="d" type="f" corresp="#s7:l6">ghenieten</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Verschoven en <rhyme label="c" type="m" corresp="#s7:l5">bespot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Iae hy liet hem <rhyme label="a" type="f">mismaken</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Doe hy schoon heerlijck <rhyme label="b" type="m">stondt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Verciert in alle <rhyme label="a" type="f" corresp="#s8:l1">saken</rhyme></l>
        <l id="s8:l4" met="3" type="-+">De schoonste die men <rhyme label="b" type="m" corresp="#s8:l2">vondt</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Al wordt ghy oock <rhyme label="c" type="m">mismaeckt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Daerom en wilt niet <rhyme label="d" type="f">trueren</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Verblijdt tot elcker <rhyme label="d" type="f" corresp="#s8:l6">uren</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">V heerlijckheyt die <rhyme label="c" type="m" corresp="#s8:l5">naeckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">En van sijn groote <rhyme label="a" type="f">vreuchde</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Quam hy int <rhyme label="b" type="m">jammerdal</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Ons blijschap en <rhyme label="a" type="f" corresp="#s9:l1">gheneuchde</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Te gheven over <rhyme label="b" type="m" corresp="#s9:l2">al</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Och onse blijschap <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Oock hier in druck <rhyme label="d" type="f">verkeeren</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Als Christus ons gaet <rhyme label="d" type="f" corresp="#s9:l6">leeren</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Hy onsen druck <rhyme label="c" type="m" corresp="#s9:l5">versoet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Rust had hy, maer tot <rhyme label="a" type="f">wercken</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Begaf hy hem met <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Op dat wy (om <rhyme label="a" type="f" corresp="#s10:l1">verstercken</rhyme>)</l>
        <l id="s10:l4" met="3" type="-+">Creghen d’eeuwighe <rhyme label="b" type="m" corresp="#s10:l2">rust</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">Tot sijnen dienst <rhyme label="c" type="m">bereyt</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Moeten wy altijdt <rhyme label="d" type="f">wesen</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Int leven nieu <rhyme label="d" type="f" corresp="#s10:l6">verresen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Dit wordt ons <rhyme label="c" type="m" corresp="#s10:l5">opgheleyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Seer beminde, met <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Beveel ick u den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Deur dit singhen oft <rhyme label="a" type="f" corresp="#s11:l1">lesen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Verquickt u altijdt <rhyme label="b" type="m" corresp="#s11:l2">meer</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Hebt doch op Christum <rhyme label="c" type="m">acht</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">En stelt hem voor u <rhyme label="d" type="f">oeghen</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">T’leven daer nae te <rhyme label="d" type="f" corresp="#s11:l6">voeghen</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Altijdt dach ende <rhyme label="c" type="m" corresp="#s11:l5">nacht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
