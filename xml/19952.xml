  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LOst Epicuur u <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">In tomeloose <rhyme label="b" type="m">lust</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Anacreon die 't <rhyme label="a" type="f" corresp="#s1:l1">minnen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Met geyle deuntjes <rhyme label="b" type="m" corresp="#s1:l2">kust</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Gaet kijkt u beyd van <rhyme label="a" type="f" corresp="#s1:l1">binnen</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Of 't hert oock leeft <rhyme label="b" type="m" corresp="#s1:l2">gerust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De rampen niet om <rhyme label="a" type="f">tellen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die 't menschelijk <rhyme label="b" type="m">gemoedt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">End 't levend lijt <rhyme label="a" type="f" corresp="#s2:l1">versellen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In voor of <rhyme label="b" type="m" corresp="#s2:l2">tegenspoet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die kunnen dubbel <rhyme label="a" type="f" corresp="#s2:l1">quellen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">'t Wellustigh <rhyme label="b" type="m" corresp="#s2:l2">herte-bloedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wats reden? Wijsheyts <rhyme label="a" type="f">ader</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En voorsicht schuylter <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">t'Ontsien sijn Hemel <rhyme label="a" type="f" corresp="#s3:l1">Vader</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat acht men sijn <rhyme label="b" type="m" corresp="#s3:l2">verdriet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dus smelt de siel te <rhyme label="a" type="f" corresp="#s3:l1">gader</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In onlust die sy <rhyme label="b" type="m" corresp="#s3:l2">siet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Waer sond in krijght sijn <rhyme label="a" type="f">vinger</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Het heel lijf snapter <rhyme label="b" type="m">deur</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dan wort sijn vuyst een <rhyme label="a" type="f" corresp="#s4:l1">slinger</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En vrede schrickter <rhyme label="b" type="m" corresp="#s4:l2">veur</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wijl wort de lust een <rhyme label="a" type="f" corresp="#s4:l1">dwinger</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Van ongebonde <rhyme label="b" type="m" corresp="#s4:l2">keur</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sijn lusten uyt te <rhyme label="a" type="f">dooven</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En luystren van de <rhyme label="b" type="m">siel</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En scheppen vreught hier <rhyme label="a" type="f" corresp="#s5:l1">boven</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Is draeyen 's weerels <rhyme label="b" type="m" corresp="#s5:l2">Wiel</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Met rust: soo kan men <rhyme label="a" type="f" corresp="#s5:l1">loven</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Sijn droeve rampen <rhyme label="b" type="m" corresp="#s5:l2">kiel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De Godlijke <rhyme label="a" type="f">gedachten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Van 't weer herschapen <rhyme label="b" type="m">bloedt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Doen swemmen in de <rhyme label="a" type="f" corresp="#s6:l1">krachten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Van 't vredige <rhyme label="b" type="m" corresp="#s6:l2">gemoedt</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Dus moet d'onrust <rhyme label="a" type="f" corresp="#s6:l1">versmackten</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En leggen onder <rhyme label="b" type="m" corresp="#s6:l2">voet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Begeerten die sich <rhyme label="a" type="f">voelen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Den toom los in de <rhyme label="b" type="m">nek</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die leveren het <rhyme label="a" type="f" corresp="#s7:l1">woelen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Van haren bitsen <rhyme label="b" type="m" corresp="#s7:l2">bek</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Maer gesel men haer <rhyme label="a" type="f" corresp="#s7:l1">boelen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Soo tuymlens' inden <rhyme label="b" type="m" corresp="#s7:l2">drek</rhyme>:</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Gaet schoort u logge <rhyme label="a" type="f">voeten</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Alwaer u hert sich <rhyme label="b" type="m">went</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Om siel-zoet te <rhyme label="a" type="f" corresp="#s8:l1">ontmoeten</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Soo wert u geest <rhyme label="b" type="m" corresp="#s8:l2">gewent</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">De haven te <rhyme label="a" type="f" corresp="#s8:l1">begroetten</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Van vreughde sonder <rhyme label="b" type="m" corresp="#s8:l2">endt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Siet Codrus sijn huys <rhyme label="a" type="f">branden</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Hy warmt sich by de <rhyme label="b" type="m">vlam</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En schut af op sijn <rhyme label="a" type="f" corresp="#s9:l1">tanden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">'t Geen hem sijn rust <rhyme label="b" type="m" corresp="#s9:l2">benam</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Soo moeten <rhyme label="a" type="f" corresp="#s9:l1">d'ingewanden</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Staen na de vrede <rhyme label="b" type="m" corresp="#s9:l2">vlam</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
