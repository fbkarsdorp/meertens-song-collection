    <melody>Zeg mij wel schoonste nimfje</melody>
    <categories>
      <category translation="love and sex">liefde en seks</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SEght my o schoonste <rhyme label="a" type="m">Nimphelijn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">VVand’lend in d’eensaem <rhyme label="b" type="f">VVeyde</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Sal ick u Coridon <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Of sal ick noch langer <rhyme label="b" type="f" corresp="#s1:l2">beyde</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Eenich verslyt ghy uwe <rhyme label="a" type="m">tydt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hoedend’ u <rhyme label="b" type="f">Schapen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Eylaes! u Coridon <rhyme label="a" type="m" corresp="#s2:l1">lydt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Als andere Herders <rhyme label="b" type="f" corresp="#s2:l2">slapen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Siet eens o schoone <rhyme label="a" type="m">Margaton</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hoe d’andere <rhyme label="b" type="f">Herderinnen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">In ’t groen schuwen die <rhyme label="a" type="m" corresp="#s3:l1">Son</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met lieve die zy <rhyme label="b" type="f" corresp="#s3:l2">beminnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Neemt mijn oock aen voor uwe <rhyme label="a" type="m">Knecht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Soo sal ick haest <rhyme label="b" type="f">ghenesen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En soo sullen wy <rhyme label="a" type="m" corresp="#s4:l1">recht</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Door liefd’ vereenight <rhyme label="b" type="f" corresp="#s4:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ick sie dat ghy nae mijn Schaepkens <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die by de uwe <rhyme label="b" type="f">vveyden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ick bid en teltse <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Noch wiltse van een niet <rhyme label="b" type="f" corresp="#s5:l2">scheyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Laetse by een mijn soetste <rhyme label="a" type="m">kaer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Soo sal ick het blydts der <rhyme label="b" type="f">Knechten</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Rontom u gheele krult <rhyme label="a" type="m" corresp="#s6:l1">haer</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Een Crans van Bloemen <rhyme label="b" type="f" corresp="#s6:l2">vlechten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Soo sullen wy ons jonghe <rhyme label="a" type="m">Ieught</rhyme></l>
        <l id="s7:l2" met="3" type="-+">D’een d’andere <rhyme label="b" type="f">over-gheven</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En wy sullen in <rhyme label="a" type="m" corresp="#s7:l1">vreught</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Te samen altydt <rhyme label="b" type="f" corresp="#s7:l2">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
