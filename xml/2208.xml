  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LAat toe op al mijn <rhyme label="a" type="f">smeekken</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Lief koosen en <rhyme label="b" type="m">geween</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat ik uw Hart mag <rhyme label="a" type="f" corresp="#s1:l1">breekken</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Veel harder als een <rhyme label="b" type="m" corresp="#s1:l2">steen</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Laat toe, dat ik uw <rhyme label="c" type="f">Lipjes</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Mag drukken met de <rhyme label="d" type="m">mijn'</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die Venus <rhyme label="c" type="f" corresp="#s1:l5">minne-knipjes</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Die niet als Hooning <rhyme label="d" type="m" corresp="#s1:l6">sijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Omhels my met uw <rhyme label="a" type="f">armen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat Goddelijk <rhyme label="b" type="m">Albast</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En knoop my met <rhyme label="a" type="f" corresp="#s2:l1">erbarmen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Aan 't middel-ritje <rhyme label="b" type="m" corresp="#s2:l2">vast</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Toon uw <rhyme label="c" type="f">Pyramidaaltjes</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Twee Bergjes van <rhyme label="d" type="m">Parnas</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die gadeloose <rhyme label="c" type="f" corresp="#s2:l5">staaltjes</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Van al wat schoonheid <rhyme label="d" type="m" corresp="#s2:l6">was</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Verbrand my door uw <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ontvonk my door uw <rhyme label="b" type="m">mond</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ik wil de dood <rhyme label="a" type="f" corresp="#s3:l1">gedoogen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">So gy my so veel <rhyme label="b" type="m" corresp="#s3:l2">gond</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Mijn Leeven en mijn <rhyme label="c" type="f">Sterven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hangt aan uw gunst <rhyme label="d" type="m">alleen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Kan ik het een <rhyme label="c" type="f" corresp="#s3:l5">verwerven</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">So ben ik wel te <rhyme label="d" type="m" corresp="#s3:l6">vreen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
