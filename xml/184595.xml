    <melody>De zoete tijden van het meiseizoen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">KOmt <rhyme label="a" type="f">nederdaelen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Tot ons uyt d'Hemels <rhyme label="a" type="f" corresp="#s1:l1">saelen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Komt Heyligh <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Besoeckt ons dese <rhyme label="b" type="m" corresp="#s1:l3">Feest</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">O troost in <rhyme label="c" type="f">smerten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Verlicht ons treurigh <rhyme label="c" type="f" corresp="#s1:l5">herten</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Dat ons <rhyme label="d" type="m">gemoedt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Wordt door uw' Licht <rhyme label="d" type="m" corresp="#s1:l7">gevoedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">O hooghste <rhyme label="a" type="f">gaeve</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Komt onse Ziele <rhyme label="a" type="f" corresp="#s2:l1">laeven</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Met uw' <rhyme label="b" type="m">fonteyn</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Maeckt ons dien dranck <rhyme label="b" type="m" corresp="#s2:l3">gemeyn</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Doet uw' vier <rhyme label="c" type="f">smaeken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Doet ons in liefde <rhyme label="c" type="f" corresp="#s2:l5">blaeken</rhyme>;</l>
        <l id="s2:l7" met="2" type="-+">Gy salve <rhyme label="d" type="m">geeft</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Waer door den Geest <rhyme label="d" type="m" corresp="#s2:l7">herleeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Gy kont ons <rhyme label="a" type="f">seven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Besonder gaeven <rhyme label="a" type="f" corresp="#s3:l1">geven</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Beloofden <rhyme label="b" type="m">pandt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Den vinger van Godts <rhyme label="b" type="m" corresp="#s3:l3">handt</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Gy laet in't <rhyme label="c" type="f">spreken</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Geen woorden oyt <rhyme label="c" type="f" corresp="#s3:l5">ontbreken</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Uw' Heyligh <rhyme label="d" type="m">strael</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Doet weten alle <rhyme label="d" type="m" corresp="#s3:l7">tael</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ontsteckt ons <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Stort uwe liefd' van <rhyme label="a" type="f" corresp="#s4:l1">binnen</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Versterckt ons <rhyme label="b" type="m">macht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Verjaeght des vyandts <rhyme label="b" type="m" corresp="#s4:l3">kracht</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Geeft ons den <rhyme label="c" type="f">vrede</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Deylt ons uw' hulpe <rhyme label="c" type="f" corresp="#s4:l5">mede</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Om buyten <rhyme label="d" type="m">schaed'</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Te vluchten alle <rhyme label="d" type="m" corresp="#s4:l7">quaedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Maeckt ons den <rhyme label="a" type="f">Vader</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En Soon bekent te <rhyme label="a" type="f" corresp="#s5:l1">gaeder</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Thoont ons <rhyme label="b" type="m">altydt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat hunnen Geest gy <rhyme label="b" type="m" corresp="#s5:l3">syt</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Glori' den <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En aen den Soon te <rhyme label="c" type="f" corresp="#s5:l5">gader</rhyme>;</l>
        <l id="s5:l7" met="2" type="-+">Den Geest Lof <rhyme label="d" type="m">sy'</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Nu, en op allen <rhyme label="d" type="m" corresp="#s5:l7">ty'</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
