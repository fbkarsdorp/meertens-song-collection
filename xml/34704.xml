  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">TReurt nu Brabantsche <rhyme label="a" type="m">Maeght</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Treckt aen u rouwich <rhyme label="b" type="m">sleet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En stroyt asschen op u <rhyme label="c" type="m">hooft</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">V doef misval <rhyme label="a" type="m" corresp="#s1:l1">beclaecht</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met bitter tranen <rhyme label="b" type="m" corresp="#s1:l2">heet</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Godes (grousaem)straf <rhyme label="c" type="m" corresp="#s1:l3">verdooft</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Valt met <rhyme label="d" type="m">ootmoet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">(Siel-rouwich) hem te <rhyme label="d" type="m" corresp="#s1:l7">voet</rhyme>:</l>
        <l id="s1:l9" met="3" type="-+">Op dat u droeve <rhyme label="e" type="m">smert</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">In blijschap eens verandert <rhyme label="e" type="m" corresp="#s1:l9">wert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Siet wie ghy voor tijts <rhyme label="a" type="m">waert</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Eer u den wreeden <rhyme label="b" type="m">Mars</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als den dul verwoeden <rhyme label="c" type="m">Leen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">V steden had <rhyme label="a" type="m" corresp="#s2:l1">beswaert</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die door sijn wreet <rhyme label="b" type="m" corresp="#s2:l2">ghekners</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Doet verbasen onse <rhyme label="c" type="m" corresp="#s2:l3">een</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Die u den <rhyme label="d" type="m">Crans</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Vol Glori-rijcken <rhyme label="d" type="m" corresp="#s2:l7">glans</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Heeft van het hooft <rhyme label="e" type="m">gheruckt</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">En uwen lof te neer <rhyme label="e" type="m" corresp="#s2:l9">ghedruckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">PoÃ«sis uyt <rhyme label="a" type="m">gheweent</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met d'ooghen vol van <rhyme label="b" type="m">smert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sidt helaes in groot <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">In ongheval <rhyme label="a" type="m" corresp="#s3:l1">versteent</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Met diepe suchten <rhyme label="b" type="m" corresp="#s3:l2">hert</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die haer connen baten <rhyme label="c" type="m" corresp="#s3:l3">niet</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Haer soete <rhyme label="d" type="m">borst</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Daer menich hert naer <rhyme label="d" type="m" corresp="#s3:l7">dorst</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Gans uyt ghemolken <rhyme label="e" type="m">schijnt</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Die door het diep gequijn <rhyme label="e" type="m" corresp="#s3:l9">verdwijnt</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den Olyftack <rhyme label="a" type="m">vermaert</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die als den Ceder <rhyme label="b" type="m">hoogh</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Stack sijn bladers in de <rhyme label="c" type="m">locht</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Leyt schier verplet ter <rhyme label="a" type="m" corresp="#s4:l1">aert</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Den wortel dor en <rhyme label="b" type="m" corresp="#s4:l2">droogh</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Wort benomen 'tnudbaer <rhyme label="c" type="m" corresp="#s4:l3">vocht</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Comt Pallas <rhyme label="d" type="m">draeft</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En Siet dat ghy hem <rhyme label="d" type="m" corresp="#s4:l7">laeft</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Met uwen wijsen <rhyme label="e" type="m">raet</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Nu hy soo swack gewortelt <rhyme label="e" type="m" corresp="#s4:l9">staet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Antwerpia <rhyme label="a" type="m">bedenckt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">'tVoorspoedighe <rhyme label="b" type="m">gheluck</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Van den langh voorleden <rhyme label="c" type="m">tijt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Als ist dat Mars u <rhyme label="a" type="m" corresp="#s5:l1">schenckt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Den beker vol van <rhyme label="b" type="m" corresp="#s5:l2">druck</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Uwen rou gheduldich <rhyme label="c" type="m" corresp="#s5:l3">lijt</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Sijt niet <rhyme label="d" type="m">verbaest</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Godt is u <rhyme label="d" type="m" corresp="#s5:l7">aldernaest</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Die u behoet voor <rhyme label="e" type="m">schandt</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Soo gy maer in sijn Liefde <rhyme label="e" type="m" corresp="#s5:l9">brandt</rhyme>.</l>
      </lg>
    </lg>
  </text>
