  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">JEsus Christus is <rhyme label="a" type="f">gheboren</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Yder zy <rhyme label="b" type="m">verblijdt</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Laet u vreugden galmen <rhyme label="a" type="f" corresp="#s1:l1">hooren</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">'t Is nu heden <rhyme label="b" type="m" corresp="#s1:l2">tijt</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Den Troost, der zielen <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Het alderhoogste <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">De bron, de zielheyls <rhyme label="c" type="f" corresp="#s1:l5">ader</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Verschijnt in neder <rhyme label="d" type="m" corresp="#s1:l6">moet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Slecht, ootmoedich, sonder <rhyme label="a" type="f">prachten</rhyme></l>
        <l id="s2:l2" met="3" type="+-">En van <rhyme label="b" type="m">pronck-cieraet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Tot een blijck dat hy de <rhyme label="a" type="f" corresp="#s2:l1">Machten</rhyme></l>
        <l id="s2:l4" met="3" type="+-">(In den hooghmoet) <rhyme label="b" type="m" corresp="#s2:l2">haet</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Hy is den grooten <rhyme label="c" type="f">Coningh</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En machtigh Heer van <rhyme label="d" type="m">al</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Nochtans hy kiest sijn <rhyme label="c" type="f" corresp="#s2:l5">wooningh</rhyme></l>
        <l id="s2:l8" met="3" type="-+">In een verachten <rhyme label="d" type="m" corresp="#s2:l6">Stal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maer sijn glants en rijcke <rhyme label="a" type="f">Zalen</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">En sijn Huys en <rhyme label="b" type="m">Hof</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Daer des Coningh mee gaet <rhyme label="a" type="f" corresp="#s3:l1">pralen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Is gheen aerdsche <rhyme label="b" type="m" corresp="#s3:l2">stof</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Is Hemel-groot, en <rhyme label="c" type="f">heerlijck</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Want yder die 't maer <rhyme label="d" type="m">kent</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die isser nae <rhyme label="c" type="f" corresp="#s3:l5">begeerlijck</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Wij't nut en zegen <rhyme label="d" type="m" corresp="#s3:l6">sendt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Christus komt in slechte <rhyme label="a" type="f">kleeden</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Om te doen <rhyme label="b" type="m">verstaen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Dat wy moeten hier <rhyme label="a" type="f" corresp="#s4:l1">beneden</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Slecht, ootmoedigh <rhyme label="b" type="m" corresp="#s4:l2">gaen</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Maer dat 'er eens nae <rhyme label="c" type="f">desen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sal zijn een beter <rhyme label="d" type="m">dagh</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Daer yder <rhyme label="c" type="f" corresp="#s4:l5">uytghelesn</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Hem self vercieren <rhyme label="d" type="m" corresp="#s4:l6">mach</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Josu, die veracht, <rhyme label="a" type="f">versmadight</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Hier verschoven <rhyme label="b" type="m">leydt</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">'k Bidd' mijn ziele <rhyme label="a" type="f" corresp="#s5:l1">beghenadight</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Dats' in <rhyme label="b" type="m" corresp="#s5:l2">nedrigheydt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">V hoogheydt mach <rhyme label="c" type="f">aenschouwen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Op gheestelijcke <rhyme label="d" type="m">wijs</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">(Met liefd' en vast <rhyme label="c" type="f" corresp="#s5:l5">betrouwen</rhyme>)</l>
        <l id="s5:l8" met="3" type="-+">In't Hemels <rhyme label="d" type="m" corresp="#s5:l6">Paradijs</rhyme>.</l>
      </lg>
    </lg>
  </text>
