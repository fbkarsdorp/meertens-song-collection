  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Aurora brengt dien klaren <rhyme label="a" type="m">dag</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ryst op myn Lief wilt <rhyme label="b" type="f">wekken</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want ik moet <rhyme label="b" type="f" corresp="#s1:l2">vertrekken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hier baet geen <rhyme label="a" type="m" corresp="#s1:l1">geklag</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Den ligter leid wild <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Aen den Boom met <rhyme label="d" type="m">vlyd</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Koomt brengt my aen de <rhyme label="c" type="f" corresp="#s1:l5">toren</rhyme>;</l>
        <l id="s1:l8" met="3" type="+-">'t Is nu moytjes <rhyme label="d" type="m" corresp="#s1:l6">tyd</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Weent niet; maer weest <rhyme label="d" type="m" corresp="#s1:l6">verblyd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe zou ik kunnen zyn <rhyme label="a" type="m">verblyd</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daer gy gaet henen <rhyme label="b" type="f">zwerven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wie weet hoe menig <rhyme label="b" type="f" corresp="#s2:l2">werven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Naest de dood gy <rhyme label="a" type="m" corresp="#s2:l1">zyt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Men zal u moeten <rhyme label="c" type="f">missen</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Mogelyk komt de <rhyme label="d" type="m">dood</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Dan smyt men u voor de <rhyme label="c" type="f" corresp="#s2:l5">vissen</rhyme>:</l>
        <l id="s2:l8" met="3" type="+-">En dan leef ik in <rhyme label="d" type="m" corresp="#s2:l6">nood</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">In angst en droefheid <rhyme label="d" type="m" corresp="#s2:l6">groot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De dood die volgt ons over <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Niemand is hier <rhyme label="b" type="f">geseten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die van te voren kan <rhyme label="b" type="f" corresp="#s3:l2">weten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Waer hy sterven <rhyme label="a" type="m" corresp="#s3:l1">zal</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">'t Is altyd droevig <rhyme label="c" type="f">scheiden</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Lief gunt my maer een <rhyme label="d" type="m">bee</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">Dat ik u mag <rhyme label="c" type="f" corresp="#s3:l5">geleiden</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Door de woeste <rhyme label="d" type="m" corresp="#s3:l6">zee</rhyme>:</l>
        <l id="s3:l9" met="3" type="-+">Lief laet ik varen <rhyme label="d" type="m" corresp="#s3:l6">mee</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schoon kind dat voor u niet en <rhyme label="a" type="m">past</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat gy zou door de <rhyme label="b" type="f">baren</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Na Oost-Inje <rhyme label="b" type="f" corresp="#s4:l2">varen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daer de peper <rhyme label="a" type="m" corresp="#s4:l1">wast</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Myn lief houd op met <rhyme label="c" type="f">klagen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Droogt uw <rhyme label="d" type="m">tranen-vloed</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Gy zult in korte <rhyme label="c" type="f" corresp="#s4:l5">dagen</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Door een brief vol <rhyme label="d" type="m" corresp="#s4:l6">moed</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Uan my worden <rhyme label="d" type="m" corresp="#s4:l6">gegroet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Schoon kind als 't aers niet wesen <rhyme label="a" type="m">kan</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Zoo wil u God <rhyme label="b" type="f">behoeden</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Op Neptunus <rhyme label="b" type="f" corresp="#s5:l2">vloeden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Draegt u als een <rhyme label="a" type="m" corresp="#s5:l1">Man</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Borias laet zyn <rhyme label="c" type="f">winden</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Blasen na uwen <rhyme label="d" type="m">zin</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">Dat gy havens moogt <rhyme label="c" type="f" corresp="#s5:l5">vinden</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Daer gy om <rhyme label="d" type="m" corresp="#s5:l6">gewin</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Haest hoop te komen <rhyme label="d" type="m" corresp="#s5:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">'k Hoop wy vinden nog wel een <rhyme label="a" type="m">Ree</rhyme>:</l>
        <l id="s6:l2" met="3" type="-+">Maer eerst moeten wy <rhyme label="b" type="f">zeilen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wel drie duisend <rhyme label="b" type="f" corresp="#s6:l2">mylen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En drie hondert <rhyme label="a" type="m" corresp="#s6:l1">mee</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Dan varen wy met <rhyme label="c" type="f">lusten</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Al na <rhyme label="d" type="m">Batavia</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Na d' een of d' ander <rhyme label="c" type="f" corresp="#s6:l5">kusten</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">Met ons Scheepje <rhyme label="d" type="m" corresp="#s6:l6">dra</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Naer 't goudryk <rhyme label="d" type="m" corresp="#s6:l6">Asia</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Lief als gy komt in 't warme <rhyme label="a" type="m">land</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Zoo wilt u niet <rhyme label="b" type="f">vermengen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Met die zwarte <rhyme label="b" type="f" corresp="#s7:l2">krengen</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">Of gy raekt van <rhyme label="a" type="m" corresp="#s7:l1">kant</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Haer oogen vol van <rhyme label="c" type="f">lonken</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Die zoeken een blank <rhyme label="d" type="m">gesel</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Het zyn maer geile <rhyme label="c" type="f" corresp="#s7:l5">vonken</rhyme>;</l>
        <l id="s7:l8" met="3" type="+-">Met haer bruine <rhyme label="d" type="m" corresp="#s7:l6">vel</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Zy lyken de drommel <rhyme label="d" type="m" corresp="#s7:l6">wel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Soete Lief leeft dog na myn <rhyme label="a" type="m">bevel</rhyme>:</l>
        <l id="s8:l2" met="3" type="-+">Laet dobbelen en <rhyme label="b" type="f">spelen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Uegten en <rhyme label="b" type="f" corresp="#s8:l2">krakeelen</rhyme>?</l>
        <l id="s8:l4" met="3" type="-+">Leeft dog niet <rhyme label="a" type="m" corresp="#s8:l1">rebel</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Begeeft u niet tot <rhyme label="c" type="f">zuypen</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Gelyk een dronkaerd <rhyme label="d" type="m">doet</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Die als een zwyn gaet <rhyme label="c" type="f" corresp="#s8:l5">kruipen</rhyme>:</l>
        <l id="s8:l8" met="3" type="+-">In den drek hy <rhyme label="d" type="m" corresp="#s8:l6">vroet</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">En verteerd al zyn <rhyme label="d" type="m" corresp="#s8:l6">goed</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ik zal my dragen huys en <rhyme label="a" type="m">koen</rhyme>;</l>
        <l id="s9:l2" met="3" type="-+">Wilt u betraende <rhyme label="b" type="f">oogen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Zoete Lief af <rhyme label="b" type="f" corresp="#s9:l2">drogen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En voor 't laest een <rhyme label="a" type="m" corresp="#s9:l1">zoen</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Myn Lief wilt zorge <rhyme label="c" type="f">dragen</rhyme>:</l>
        <l id="s9:l6" met="3" type="+-">Uoor u maegdom <rhyme label="d" type="m">fris</rhyme>;</l>
        <l id="s9:l7" met="3" type="-+">Een dief zal 't noyt <rhyme label="c" type="f" corresp="#s9:l5">behagen</rhyme>,</l>
        <l id="s9:l8" met="3" type="+-">Dat hy steeld de <rhyme label="d" type="m" corresp="#s9:l6">vis</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Die niet vergald en <rhyme label="d" type="m" corresp="#s9:l6">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
