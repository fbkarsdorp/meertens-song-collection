  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Carna, 't puijkje van de <rhyme label="a" type="f">maagden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die door schoonheid van <rhyme label="b" type="m">gelaat</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Aan een yder een <rhyme label="a" type="f" corresp="#s1:l1">behaagden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Maar steeds schuwde d' <rhyme label="b" type="m" corresp="#s1:l2">Egte-staat</rhyme></l>
        <l id="s1:l5" met="4" type="+-">En haar Minnaars door haar <rhyme label="c" type="m">list</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Aardig te bedriegen <rhyme label="c" type="m" corresp="#s1:l5">wist</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wierd van Janus eens <rhyme label="a" type="f">gevonden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">En om wedermin <rhyme label="b" type="m">gevleid</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Sy, die nergens vlugte <rhyme label="a" type="f" corresp="#s2:l1">konde</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Nam haer hulp aan <rhyme label="b" type="m" corresp="#s2:l2">listigheid</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Veinsden dat haar fiere <rhyme label="c" type="m">sin</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Was verwonnen door sijn <rhyme label="c" type="m" corresp="#s2:l5">min</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">‘Janus’, sprak sy, ‘uw <rhyme label="a" type="f">gebeden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Hebben kragt op mijn <rhyme label="b" type="m">gemoed</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Ik geloof uw soete <rhyme label="a" type="f" corresp="#s3:l1">reden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Ja, mijn min omhelsd uw <rhyme label="b" type="m" corresp="#s3:l2">gloed</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Ga slegts voor, ten boschwaard <rhyme label="c" type="m">in</rhyme></l>
        <l id="s3:l6" met="4" type="+-">En voldoe uw hete <rhyme label="c" type="m" corresp="#s3:l5">min</rhyme>.’</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hy geloofd de soete <rhyme label="a" type="f">woorden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Die de lose Carna <rhyme label="b" type="m">sprak</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Sy, wiens hert noit min <rhyme label="a" type="f" corresp="#s4:l1">bekoorde</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En met hem de spot slegs <rhyme label="b" type="m" corresp="#s4:l2">stak</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Schuijlden in het digte <rhyme label="c" type="m">hout</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Agter hem in 't duister <rhyme label="c" type="m" corresp="#s4:l5">woud</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Maar wat soekt gy te <rhyme label="a" type="f">ontkomen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Schoone Carna, 't is om <rhyme label="b" type="m">niet</rhyme>!</l>
        <l id="s5:l3" met="4" type="+-">Janus heeft uw doen <rhyme label="a" type="f" corresp="#s5:l1">vernomen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Wijl hy voor en agter <rhyme label="b" type="m" corresp="#s5:l2">siet</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">‘Schuijl niet’, sprak hy, ‘uwe <rhyme label="c" type="m">list</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Is door mijn gesigt <rhyme label="c" type="m" corresp="#s5:l5">gemist</rhyme>.’</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hy, door heete min <rhyme label="a" type="f">gedreven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Heeft haar schoone mond <rhyme label="b" type="m">gekust</rhyme></l>
        <l id="s6:l3" met="4" type="+-">En, in spijt haar <rhyme label="a" type="f" corresp="#s6:l1">tegenstreven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Sijn verhitte Brand <rhyme label="b" type="m" corresp="#s6:l2">geblust</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">‘Niemand’, sprak hy, ‘oit <rhyme label="c" type="m">ontkwam</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Mijn ontstooke Minne <rhyme label="c" type="m" corresp="#s6:l5">vlam</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maar kon my uw Min <rhyme label="a" type="f">bekoren</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Sijt getroost in uw <rhyme label="b" type="m">verdriet</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Hebt gy uwe eer <rhyme label="a" type="f" corresp="#s7:l1">verloren</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Agt dat tot uwe schade   <rhyme label="b" type="m" corresp="#s7:l2">niet</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Draagt tot teken van mijn <rhyme label="c" type="m">min</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Voorts   de Naam van een <rhyme label="c" type="m" corresp="#s7:l5">Godin</rhyme>!’</l>
      </lg>
    </lg>
