    <melody>Die mij te drinken gaf</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VVie wil hooren <rhyme label="a" type="f">singhen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van vreuchde een nieu <rhyme label="b" type="m">Liet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Al van een Capiteyne <rhyme label="c" type="f">dochter</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Zy wasser gheheten <rhyme label="b" type="m" corresp="#s1:l2">Margriet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Schrijver seyd goelijck <rhyme label="a" type="f">meysje</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En wil sy met mijnen <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">In dat Legher sal ick jou <rhyme label="c" type="f">leyden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De Capiteyn isser jou <rhyme label="b" type="m" corresp="#s2:l2">Vaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al is de Capiteyn mijn <rhyme label="a" type="f">Vader</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daer leydt soo weynigh <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ick sal my wel soo vremde <rhyme label="c" type="f">kleyden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dat hy my niet kennen en <rhyme label="b" type="m" corresp="#s3:l2">kan</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wat trock zy aen een <rhyme label="a" type="f">keursje</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van Zijde <rhyme label="b" type="m">Kammelot</rhyme></l>
        <l id="s4:l3" met="3" type="-+">En daer op een swart laekens <rhyme label="c" type="f">lijfje</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat wasser met koorde <rhyme label="b" type="m" corresp="#s4:l2">gheboordt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Noch trock zy aen een paer <rhyme label="a" type="f">kousjes</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van Incornate <rhyme label="b" type="m">couleur</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer op een paer zijde <rhyme label="c" type="f">koussebande</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Haer schoentjes na de nieuwe <rhyme label="b" type="m" corresp="#s5:l2">snee</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wat sette zy op haer <rhyme label="a" type="f">hoofje</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Al op haer geel kruyst <rhyme label="b" type="m">haer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Een graeuwe hoet met <rhyme label="c" type="f">pluyme</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Van goude woeg hyder buet <rhyme label="b" type="m" corresp="#s6:l2">swaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer doen zy in dat <rhyme label="a" type="f">Legher</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Al in dat legher quam <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">De Capiteyn van die <rhyme label="c" type="f">soldaaten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Gingh voore dat Meysje <rhyme label="b" type="m" corresp="#s7:l2">staen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O Meysje, goelijck <rhyme label="a" type="f">Meysje</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En wil je met my <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Al die kleyertjes die ghy <rhyme label="c" type="f">draghet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die sal ick in zijde <rhyme label="b" type="m" corresp="#s8:l2">beslaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O! Capiteyn groot <rhyme label="a" type="f">heere</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Het macher al soo niet <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Vernan dit dat’s u getroude <rhyme label="c" type="f">vrouwe</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Zy souder wel toornigh <rhyme label="b" type="m" corresp="#s9:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ick wou dat mijn huys <rhyme label="a" type="f">vroutje</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Al voor mijn voete lagh <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En dat ick met jou moye <rhyme label="c" type="f">meysje</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Sou gaen plucken de roosjes <rhyme label="b" type="m" corresp="#s10:l2">roodt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Hy schonck haer eens te <rhyme label="a" type="f">drincken</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">De koele wijn uyt een <rhyme label="b" type="m">glas</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Doen begost hy eerst te <rhyme label="c" type="f">dencken</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Oft oock zijn dochtertjen <rhyme label="b" type="m" corresp="#s11:l2">was</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Hy sprack tot zijnen <rhyme label="a" type="f">knaepe</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Nu zadel my mijn <rhyme label="b" type="m">paert</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Na huys toe soo wil ick <rhyme label="c" type="f">rijden</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">’t Is my der wel rijdens <rhyme label="b" type="m" corresp="#s12:l2">waert</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Maer doen hy op de val <rhyme label="a" type="f">brugh</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Al op de val-brugh <rhyme label="b" type="m">quam</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Daer sag hy zijn lieve huys <rhyme label="c" type="f">vroutje</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Al in haer deurtje <rhyme label="b" type="m" corresp="#s13:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Hy seyd’, Godt groed u <rhyme label="a" type="f">vrouwe</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Godt gheeft u goeden <rhyme label="b" type="m">dagh</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Waer isser Margriet ons <rhyme label="c" type="f">dochter</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Is zy doodt of leeft zy <rhyme label="b" type="m" corresp="#s14:l2">noch</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Margrietje onse <rhyme label="a" type="f">dochter</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Die isser al in de <rhyme label="b" type="m">krijgh</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Zy draeghet een hoet met <rhyme label="c" type="f">pluymen</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Ic en sacher noyt <rhyme label="b" type="m" corresp="#s15:l2">schoonerblantwyf</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Hy sprack tot zijne <rhyme label="a" type="f">knaepe</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Nu sabeldt my myn <rhyme label="b" type="m">paert</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Nae ’t legher wil ick <rhyme label="c" type="f">rijden</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">’t Is my wel rijdens <rhyme label="b" type="m" corresp="#s16:l2">waert</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Maer doen hy in dat <rhyme label="a" type="f">legher</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Al in dat legher quam <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Daer sag hy Margriet zijn <rhyme label="c" type="f">dochter</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Onder die soldaten <rhyme label="b" type="m" corresp="#s17:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Margriet mijn Ionghste <rhyme label="a" type="f">dochter</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Ten macher al soo niet <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Dat ghy dee met mijn <rhyme label="c" type="f">soldaten</rhyme>.</l>
        <l id="s18:l4" met="3" type="-+">Soud’ drincken koel isser de <rhyme label="b" type="m" corresp="#s18:l2">wijn</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Och Vader seyde sy <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Daer ben ick wel in <rhyme label="b" type="m">gherust</rhyme></l>
        <l id="s19:l3" met="3" type="-+">Iou te volghen met u <rhyme label="c" type="f">soldaten</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Dat isser mijn hooghste <rhyme label="b" type="m" corresp="#s19:l2">lust</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Margriet mijn jonghste <rhyme label="a" type="f">dochter</rhyme>,</l>
        <l id="s20:l2" met="3" type="-+">’t En machet niet wesen <rhyme label="b" type="m">alsoo</rhyme></l>
        <l id="s20:l3" met="3" type="-+">Dat jyder met mijn <rhyme label="c" type="f">soldaten</rhyme>,</l>
        <l id="s20:l4" met="3" type="-+">Soud’slaepen al inne het <rhyme label="b" type="m" corresp="#s20:l2">stroo</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Och Vader seyde zy <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s21:l2" met="3" type="-+">Daer leydt jou soo weynigh <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">In ‘t legher soo wil ick <rhyme label="c" type="f">blijven</rhyme>,</l>
        <l id="s21:l4" met="3" type="-+">Slaepen by mijn ghetrouwde <rhyme label="b" type="m" corresp="#s21:l2">man</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
