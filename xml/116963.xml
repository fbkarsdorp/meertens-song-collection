  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VRinden luistert na dit <rhyme label="a" type="m">lied</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Van ’t geen’er dagelyks <rhyme label="a" type="m" corresp="#s1:l1">geschied</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">’t Is van een moeder en een <rhyme label="b" type="m">Zoon</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Weder op een nieuwe <rhyme label="b" type="m" corresp="#s1:l3">toon</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">’t Is van den Huwelyken <rhyme label="c" type="m">staat</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">’t Geen de Ieugd <rhyme label="c" type="m" corresp="#s1:l5">aangaat</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Mijn zoon, verstaat myn reden <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Hout u buyten het <rhyme label="a" type="m" corresp="#s2:l1">minne-spel</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Want gy zijt al te jong <rhyme label="b" type="m">bejaart</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Ach mijn kind, ik bid <rhyme label="b" type="m" corresp="#s2:l3">bedaart</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Verlaat de Weduwvrouw en <rhyme label="c" type="m">meyd</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">En Houd de <rhyme label="c" type="m" corresp="#s2:l5">Liberteid</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Moeder wat is ’t een groote <rhyme label="a" type="m">vermaak</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Te leeven in den <rhyme label="a" type="m" corresp="#s3:l1">Echtenstaat</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Daar is geen grooter vreugd op <rhyme label="b" type="m">aard</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Als twee Liefjes wel <rhyme label="b" type="m" corresp="#s3:l3">gepaart</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Verbonden ’t Zaamen door den <rhyme label="c" type="m">Trouw</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Als echte man en <rhyme label="c" type="m" corresp="#s3:l5">vrouw</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Myn Zoon wilt my gelooven <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Loopt dan u zelven in ’t <rhyme label="a" type="m" corresp="#s4:l1">verdriet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Gy zult de zaak wel worden <rhyme label="b" type="m">waar</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Eer de Tyd al van een <rhyme label="b" type="m" corresp="#s4:l3">Iaar</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Door Arremoede, die u <rhyme label="c" type="m">kwelt</rhyme>:</l>
        <l id="s4:l6" met="3" type="+-">Ia zonder brood of <rhyme label="c" type="m" corresp="#s4:l5">geld</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ik lag wat met <rhyme label="a" type="m">Liberteid</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Een vrouw is mijn <rhyme label="a" type="m" corresp="#s5:l1">genegendheid</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Al ben ik melankolick of <rhyme label="b" type="m">ziek</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Een vrouw troost my in ’t <rhyme label="b" type="m" corresp="#s5:l3">verdriet</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Ik laat liever de wyn en <rhyme label="c" type="m">bier</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Een vrouw is myn <rhyme label="c" type="m" corresp="#s5:l5">plaizier</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Gy leeft nu, zo als het u <rhyme label="a" type="m">lust</rhyme>:</l>
        <l id="s6:l2" met="4" type="+-">In vreede, stilheyd, en in <rhyme label="a" type="m" corresp="#s6:l1">rust</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Mankeert u geld, ’t word u <rhyme label="b" type="m">beschikt</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Als gy slaept, gy word <rhyme label="b" type="m" corresp="#s6:l3">gedekt</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Zo dra als gy maar hebt een <rhyme label="c" type="m">vrouw</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Zyt gy gestaag in <rhyme label="c" type="m" corresp="#s6:l5">rouw</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Myn arrebeyd valt my niet <rhyme label="a" type="m">zwaer</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Als ik mag hebben een <rhyme label="a" type="m" corresp="#s7:l1">Ega</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Ben ik door ’t werken <rhyme label="b" type="m">afgeslooft</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">’t Is een vrouw, die my <rhyme label="b" type="m" corresp="#s7:l3">troost</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Zy toont my haar <rhyme label="c" type="m">genegentheyd</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Ik verlaat de <rhyme label="c" type="m" corresp="#s7:l5">Liberteid</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Uw vrouw valt in het <rhyme label="a" type="m">kinderbed</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Daer door wert uwe rust <rhyme label="a" type="m" corresp="#s8:l1">belet</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Dan krygt gy dadelyk op de <rhyme label="b" type="m">vloer</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Zo de baker, als vroed <rhyme label="b" type="m" corresp="#s8:l3">moer</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">’t Is niet als droefheid en <rhyme label="c" type="m">elent</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Waer gy u keert of <rhyme label="c" type="m" corresp="#s8:l5">wend</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Het kinder baeren is een <rhyme label="a" type="m">vreugt</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Dan denk ik om mijn eerste <rhyme label="a" type="m" corresp="#s9:l1">jeugt</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Wanneer ik eerst ter wereld <rhyme label="b" type="m">kwam</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Was ik mee, gelyk een <rhyme label="b" type="m" corresp="#s9:l3">Lam</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Dat troost my in mijn <rhyme label="c" type="m">arrebeid</rhyme>,</l>
        <l id="s9:l6" met="3" type="+-">Ik Verlaet de <rhyme label="c" type="m" corresp="#s9:l5">Liberteid</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Dan roepen zy gestaeg om <rhyme label="a" type="m">geld</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">De baker u gestadig <rhyme label="a" type="m" corresp="#s10:l1">kwelt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Om water, Zeep, om turf en <rhyme label="b" type="m">hout</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Dan zit gy uw hooft en <rhyme label="b" type="m" corresp="#s10:l3">klouwt</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Daar by u Ambagt gaet zo <rhyme label="c" type="m">slegt</rhyme>,</l>
        <l id="s10:l6" met="3" type="+-">Ik ra u maer ten <rhyme label="c" type="m" corresp="#s10:l5">best</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Moeder ik schey met praaten <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Trouwen dat is myn vast <rhyme label="a" type="m" corresp="#s11:l1">besluyt</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Daar by, raad ik al de <rhyme label="b" type="m">Ionkheyd</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Verlaat dan de <rhyme label="b" type="m" corresp="#s11:l3">Liberteid</rhyme>;</l>
        <l id="s11:l5" met="4" type="+-">Daar is geen grooter vreugt op <rhyme label="c" type="m">aerd</rhyme>,</l>
        <l id="s11:l6" met="3" type="+-">Te weesen wel <rhyme label="c" type="m" corresp="#s11:l5">gepaert</rhyme>.</l>
      </lg>
    </lg>
  </text>
