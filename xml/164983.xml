  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">O Sotte <rhyme label="a" type="m">Ieught</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die soo misbruyckt de <rhyme label="b" type="f">tijden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die doch soo dierbaer <rhyme label="c" type="m">staen</rhyme>:</l>
        <l id="s1:l4" met="2" type="-+">Soeckt ghy in <rhyme label="a" type="m" corresp="#s1:l1">deught</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Malkander te <rhyme label="b" type="f" corresp="#s1:l2">verblijden</rhyme>?</l>
        <l id="s1:l6" met="3" type="-+">Neen 'ts daer verr' van <rhyme label="c" type="m" corresp="#s1:l3">daen</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Siet men 't soo niet <rhyme label="c" type="m" corresp="#s1:l3">gaen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Als sy te samen <rhyme label="d" type="f">komen</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Dat men recht veel sotheyt <rhyme label="c" type="m" corresp="#s1:l3">aen</rhyme>?</l>
        <l id="s1:l10" met="3" type="-+">En 't wort in danck <rhyme label="d" type="f" corresp="#s1:l8">genomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">O <rhyme label="a" type="m">ydelheydt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hoe zijt ghy <rhyme label="b" type="f">in-gekroopen</rhyme>!</l>
        <l id="s2:l3" met="3" type="-+">En by des Ieught wel <rhyme label="c" type="m">meest</rhyme>.</l>
        <l id="s2:l4" met="2" type="-+">Waerom <rhyme label="a" type="m" corresp="#s2:l1">verleydt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Door averechtse <rhyme label="b" type="f" corresp="#s2:l2">loopen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ghy soo den Christen <rhyme label="c" type="m" corresp="#s2:l3">geest</rhyme>?</l>
        <l id="s2:l7" met="3" type="-+">Ghy fenijnigh <rhyme label="c" type="m" corresp="#s2:l3">beest</rhyme>.</l>
        <l id="s2:l8" met="3" type="-+">Elck loopt met groote <rhyme label="d" type="f">schreden</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Even ofmen Godt niet <rhyme label="c" type="m" corresp="#s2:l3">vreest</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Tot alle <rhyme label="d" type="f" corresp="#s2:l8">ydelheden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Soo is't <rhyme label="a" type="m">gelaet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En ydel de <rhyme label="b" type="f">Gesangen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En ydel haer <rhyme label="c" type="m">gedacht</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">'t Is ydel <rhyme label="a" type="m" corresp="#s3:l1">preat</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En ydel al haer <rhyme label="b" type="f" corresp="#s3:l2">gangen</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Na ydelheden <rhyme label="c" type="m" corresp="#s3:l3">tracht</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Elck by dagh en <rhyme label="c" type="m" corresp="#s3:l3">nacht</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Geen tijdt en gaet <rhyme label="d" type="f">verlooren</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Of men was in sijn <rhyme label="c" type="m" corresp="#s3:l3">geslacht</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Tot ydelheyt <rhyme label="d" type="f" corresp="#s3:l8">gebooren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Is <rhyme label="a" type="m">ydelheydt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wel waerdigh te <rhyme label="b" type="f">beminnen</rhyme>?</l>
        <l id="s4:l3" met="3" type="-+">Ey lieve segh my <rhyme label="c" type="m">dat</rhyme>;</l>
        <l id="s4:l4" met="2" type="-+">Want sy <rhyme label="a" type="m" corresp="#s4:l1">bereyt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Van buyten en van <rhyme label="b" type="f" corresp="#s4:l2">binnen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">De sonde beter <rhyme label="c" type="m" corresp="#s4:l3">padt</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Och bedenckt eens <rhyme label="c" type="m" corresp="#s4:l3">wat</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Ghy hebben sult te <rhyme label="d" type="f">seggen</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Als de Heer u alles <rhyme label="c" type="m" corresp="#s4:l3">plat</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Voor d'oogen neer sal <rhyme label="d" type="f" corresp="#s4:l8">leggen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Komt dan by <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Komt in de vrees' des <rhyme label="b" type="f">Heeren</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Maeck niet, gelijck ghy <rhyme label="c" type="m">placht</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Met u <rhyme label="a" type="m" corresp="#s5:l1">gemeen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Die ydelheden <rhyme label="b" type="f" corresp="#s5:l2">leeren</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Maer hem die Godt <rhyme label="c" type="m" corresp="#s5:l3">verwacht</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Sich voor sonde <rhyme label="c" type="m" corresp="#s5:l3">wacht</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En gaet op Godes <rhyme label="d" type="f">wegen</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Soo sult ghy in u <rhyme label="c" type="m" corresp="#s5:l3">geslacht</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Verkrijgen Godes <rhyme label="d" type="f" corresp="#s5:l8">zegen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Laet ons den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Steets heben voor ons' <rhyme label="b" type="f">oogen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">In ons' werck en <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Op dat hy <rhyme label="a" type="m" corresp="#s6:l1">meer</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Met liefde sy <rhyme label="b" type="f" corresp="#s6:l2">bewogen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Tot ons in't aerdsche <rhyme label="c" type="m" corresp="#s6:l3">Dal</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">En hier nae soo <rhyme label="c" type="m" corresp="#s6:l3">sal</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Hy ons sijn Rijcke <rhyme label="d" type="f">geven</rhyme>,</l>
        <l id="s6:l9" met="4" type="-+">Daer wy sonder alle <rhyme label="c" type="m" corresp="#s6:l3">val</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Gedurigh sullen <rhyme label="d" type="f" corresp="#s6:l8">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
