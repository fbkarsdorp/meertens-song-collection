<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24529</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody/>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Och edelle mensche mynnet dinen <rhyme label="a" type="m">god</rhyme></l>
        <l id="s1:l2" met="3" type="-+">bauen alle <rhyme label="b" type="f">creatueren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">want wattu anders genoechte <rhyme label="c" type="m">suekeste</rhyme></l>
        <l id="s1:l4" met="3" type="-+">ten mach niet lange <rhyme label="b" type="f" corresp="#s1:l2">dueren</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och mensche dencket aen dyn <rhyme label="a" type="m">edelheit</rhyme></l>
        <l id="s2:l2" met="3" type="-+">ende leuet doch nae der <rhyme label="b" type="f">redene</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Want sal die ziele hoeren willen <rhyme label="c" type="m">vercrygen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">dat vleys moet syn <rhyme label="b" type="f" corresp="#s2:l2">vertreden</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nv keer din ogen al in dat <rhyme label="a" type="m">oest</rhyme></l>
        <l id="s3:l2" met="3" type="-+">al daer die sonne <rhyme label="b" type="f">opdrynget</rhyme></l>
        <l id="s3:l3" met="4" type="-+">ende legt alle uwen vlyt daer <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">ende hoert watmen daer <rhyme label="b" type="f" corresp="#s3:l2">synget</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die discantieren die daer <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">van sueter <rhyme label="b" type="f">melodien</rhyme></l>
        <l id="s4:l3" met="4" type="-+">wanneer  di hier die tyt <rhyme label="c" type="m">verdriet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">soe salstu der wert <rhyme label="b" type="f" corresp="#s4:l2">lyden</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die claerheit die heer Jhesus <rhyme label="a" type="m">schencket</rhyme></l>
        <l id="s5:l2" met="3" type="-+">die is soe suete te <rhyme label="b" type="f">dryncken</rhyme></l>
        <l id="s5:l3" met="4" type="-+">als ons dit vleysche hier moeyen <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s5:l4" met="3" type="-+">soe laet ons daer op <rhyme label="b" type="f" corresp="#s5:l2">dencken</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ende die nv hier den rype <rhyme label="a" type="m">ontsiet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">op hem sal vallen die colde <rhyme label="b" type="f">snee</rhyme></l>
        <l id="s6:l3" met="4" type="-+">wie comet al inder hellen <rhyme label="c" type="m">gloet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">die roepen soe lude O wy ende o <rhyme label="b" type="f" corresp="#s6:l2">wee</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die vaderlicke roede laet ons <rhyme label="a" type="m">ontfaen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">op dat wy vlyen den <rhyme label="b" type="f">hamerslach</rhyme></l>
        <l id="s7:l3" met="4" type="-+">ende dencke wi op dat godtelicke <rhyme label="c" type="m">heer</rhyme></l>
        <l id="s7:l4" met="3" type="-+">sy hadden soe mennygen droeuighen <rhyme label="b" type="f" corresp="#s7:l2">dach</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die gade wil sien die moet hem <rhyme label="a" type="m">keren</rhyme></l>
        <l id="s8:l2" met="3" type="-+">van alle <rhyme label="b" type="f">creatueren</rhyme></l>
        <l id="s8:l3" met="4" type="-+">ende hi moet alle dingen <rhyme label="c" type="m">vlien</rhyme></l>
        <l id="s8:l4" met="3" type="-+">die niet en moegen <rhyme label="b" type="f" corresp="#s8:l2">dueren</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Laet ons nv setten in onsen <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">dat wi ons willen <rhyme label="b" type="f">liden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Heer Jhesus is soe trouwen <rhyme label="c" type="m">vret</rhyme></l>
        <l id="s9:l4" met="3" type="-+">hi wil ons helpen <rhyme label="b" type="f" corresp="#s9:l2">stryden</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dat godtelike aensicht is soe <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s10:l2" met="3" type="-+">als wi dat <rhyme label="b" type="f">beschouwen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">hadde wy geleden eer dusent <rhyme label="c" type="m">jaer</rhyme></l>
        <l id="s10:l4" met="3" type="-+">ten solde ons dan niet <rhyme label="b" type="f" corresp="#s10:l2">rouwen</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Och edelle herte keer di van <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Want du en vyndeste hier genen <rhyme label="b" type="f">troest</rhyme></l>
        <l id="s11:l3" met="4" type="-+">ende sette dyn hape alleen in <rhyme label="c" type="m">gade</rhyme></l>
        <l id="s11:l4" met="3" type="-+">soe werdestu  altemael <rhyme label="b" type="f" corresp="#s11:l2">verloest</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Die synlicheit moet ommer <rhyme label="a" type="m">steruen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">och dat doet mennygen herten <rhyme label="b" type="f">wee</rhyme></l>
        <l id="s12:l3" met="4" type="-+">mer comet die mynne mit hoere <rhyme label="c" type="m">vlammen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">sy brantet altemael <rhyme label="b" type="f" corresp="#s12:l2">ontwee</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Och guede Jhs staet on <rhyme label="a" type="m">by</rhyme></l>
        <l id="s13:l2" met="3" type="-+">al mit geheelre <rhyme label="b" type="f">trouwen</rhyme></l>
        <l id="s13:l3" met="4" type="-+">in creatueren en vynt mens <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s13:l4" met="3" type="-+">dat machmen nv wal <rhyme label="b" type="f" corresp="#s13:l2">schouwen</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Ick wil di seggen soe alst <rhyme label="a" type="m">is</rhyme></l>
        <l id="s14:l2" met="3" type="-+">dat salstu holden alre <rhyme label="b" type="f">gewys</rhyme></l>
        <l id="s14:l3" met="4" type="-+">soekestu vrede in deser <rhyme label="c" type="m">tyt</rhyme></l>
        <l id="s14:l4" met="3" type="-+">altehans werdestu des <rhyme label="b" type="f" corresp="#s14:l2">quyt</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Daerom soe keren wy ons van <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s15:l2" met="3" type="-+">ende sueken dat enich <rhyme label="b" type="f">een</rhyme></l>
        <l id="s15:l3" met="4" type="-+">daer laet ons mitten ogen  <rhyme label="c" type="m">staeren</rhyme></l>
        <l id="s15:l4" met="3" type="-+">ende mitten herten al doer <rhyme label="b" type="f" corresp="#s15:l2">varen</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Die laten wil des hem <rhyme label="a" type="m">genoeget</rhyme></l>
        <l id="s16:l2" met="3" type="-+">syn loen sal wesen alsoe <rhyme label="b" type="f">groet</rhyme></l>
        <l id="s16:l3" met="4" type="-+">ende nyemant en wese daer in <rhyme label="c" type="m">verslagen</rhyme></l>
        <l id="s16:l4" met="3" type="-+">die mynne is sterker dan die <rhyme label="b" type="f" corresp="#s16:l2">doet</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
