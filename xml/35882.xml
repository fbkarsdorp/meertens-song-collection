  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Helpt my o grooten <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Want tot u ick my <rhyme label="a" type="m" corresp="#s1:l1">keer</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Wilt my verlossen van dit Lichaem <rhyme label="b" type="m">kranck</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Daer ick ben aen ghebonden teghen <rhyme label="b" type="m" corresp="#s1:l3">danck</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ick sucht soo menigh <rhyme label="c" type="m">mael</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">Tot u o mijnen Godt met droeve <rhyme label="c" type="m" corresp="#s1:l5">tael</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Mijn traenen daelen, en my heel af <rhyme label="d" type="f">malen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wilt toch verlossen <rhyme label="e" type="m">my</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Vyt die vleesche <rhyme label="e" type="m" corresp="#s1:l8">slaverny</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Den gheest en de <rhyme label="a" type="m">natuer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die spelen haere <rhyme label="a" type="m" corresp="#s2:l1">kuer</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">T’is hier ghedurigh oorlogh ende <rhyme label="b" type="m">strijt</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Als ick soeck vre dan komt den haet en <rhyme label="b" type="m" corresp="#s2:l3">nijt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Als ick my selven <rhyme label="c" type="m">heel</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Ontrecken wil van s’werelts <rhyme label="c" type="m" corresp="#s2:l5">ghestreel</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Komt sy my trecken en met my <rhyme label="d" type="f">gecken</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Soo ick haer niet en <rhyme label="e" type="m">ken</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Dat ick berooft van sinnen <rhyme label="e" type="m" corresp="#s2:l8">ben</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Soeck ick uyt liefde <rhyme label="a" type="m">reen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Te Minnen u <rhyme label="a" type="m" corresp="#s3:l1">alleen</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Daer komt een weder strijt in mijn <rhyme label="b" type="m">ghemoet</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Mijn eyghen Lichaem wilt oock sijn <rhyme label="b" type="m" corresp="#s3:l3">ghevoet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Al t’gheen dat ick aen <rhyme label="c" type="m">sien</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">T’hadt gheeren dat ick daer aen d’hant sou <rhyme label="c" type="m" corresp="#s3:l5">bien</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Daer ick met grouwen dat moet <rhyme label="d" type="f">aenschouwen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Hoe ver ist dan daer <rhyme label="e" type="m">van</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Dat ick t’begheeren <rhyme label="e" type="m" corresp="#s3:l8">kan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Breeckt Heer dan los den <rhyme label="a" type="m">bandt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En leydt my metter <rhyme label="a" type="m" corresp="#s4:l1">handt</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Wilt toch verlossen my o goeden <rhyme label="b" type="m">vrient</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Waer heb ick toch dees slavernij <rhyme label="b" type="m" corresp="#s4:l3">verdient</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Want t’is my groot <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Dat ick moet van de wereldt zijn <rhyme label="c" type="m" corresp="#s4:l5">bekent</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Dees levens pijnen doen my <rhyme label="d" type="f">verdwijnen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Ick sal t’ontfanghen <rhyme label="e" type="m">hier</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">In plaets van’t <rhyme label="e" type="m" corresp="#s4:l8">Vaghevier</rhyme>.</l>
      </lg>
    </lg>
  </text>
