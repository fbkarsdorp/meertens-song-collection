  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Wel nu ick min <rhyme label="a" type="f">u</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">En ick besin <rhyme label="a" type="f" corresp="#s1:l1">u</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En ick sal u mijn bystant <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Geniet ick dat soo geeft gy my het <rhyme label="b" type="f" corresp="#s1:l3">leven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ick neem u tot mijn <rhyme label="c" type="m">Vrouw</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En ick blijf uw <rhyme label="c" type="m" corresp="#s1:l5">getrouw</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Soo wacht u van <rhyme label="c" type="m" corresp="#s1:l5">berouw</rhyme></l>
        <l id="s1:l8" met="2" type="-+">En <rhyme label="b" type="f" corresp="#s1:l3">tegen-streven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">‘K ben kranck van <rhyme label="a" type="f">minne</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Hoe soo <rhyme label="a" type="f" corresp="#s2:l1">Vrindinne</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Want gy mijn ’t hert hebt <rhyme label="b" type="f">gestoolen</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Is dan uw liefd’ tot my als vuur’ge <rhyme label="b" type="f" corresp="#s2:l3">koolen</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Och ja komt tot my <rhyme label="c" type="m">in</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dat had ick oock in ’t <rhyme label="c" type="m" corresp="#s2:l5">zin</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Soo sy dan mijne <rhyme label="c" type="m" corresp="#s2:l5">min</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Aen uw <rhyme label="b" type="f" corresp="#s2:l3">bevoolen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Went af uw <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Zijt gy <rhyme label="a" type="f" corresp="#s3:l1">bewoogen</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">Och ja sy doen mijn Ziel gewelt <rhyme label="b" type="f">aen</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">En uwe schoonheyt doet mijn Ziel verstelt <rhyme label="b" type="f" corresp="#s3:l3">staen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Och liefste gy zijt <rhyme label="c" type="m">mijn</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En ick sal d’uwe <rhyme label="c" type="m" corresp="#s3:l5">zijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Komt laet ons dan om <rhyme label="c" type="m" corresp="#s3:l5">wijn</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Saem in het velt <rhyme label="b" type="f" corresp="#s3:l3">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
