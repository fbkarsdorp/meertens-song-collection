    <melody>Hansje sneed het koren</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Ydelheyd, die elk <rhyme label="a" type="m">verleyd</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O heete pest der <rhyme label="b" type="f">Maagde</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">O Kanker in de weerelds <rhyme label="c" type="m">min</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die 't Jufferdom <rhyme label="b" type="f" corresp="#s1:l2">belaagde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe roemt die stoet so op haar <rhyme label="a" type="m">goed</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En haar <rhyme label="b" type="f">bevalligheeden</rhyme>!</l>
        <l id="s2:l3" met="4" type="-+">Op af komst die ik by haar <rhyme label="c" type="m">sie</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gaan sy hoovaardig <rhyme label="b" type="f" corresp="#s2:l2">treeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Haar schoon gesicht de hoogmoed <rhyme label="a" type="m">sticht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En maakt haar <rhyme label="b" type="f">opgeblaasen</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Maar wat is dat een ydel <rhyme label="c" type="m">schat</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daar sy verwaant op <rhyme label="b" type="f" corresp="#s3:l2">raasen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Men beeld sich in, dat Vryers <rhyme label="a" type="m">min</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Haar Hoogheyd is <rhyme label="b" type="f">onwaardig</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">En dat geen druk keert haar <rhyme label="c" type="m">geluk</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Maar staag voor haar is <rhyme label="b" type="f" corresp="#s4:l2">vaardig</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Celestyn, laat dat doch <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En sijt niet trots in 't <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">De Dood dit al vernielen <rhyme label="c" type="m">sal</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En straffen yd'le <rhyme label="b" type="f" corresp="#s5:l2">sinnen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O ydelheyd, die elk <rhyme label="a" type="m">verleyd</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">O heete pest der <rhyme label="b" type="f">Maagde'</rhyme>!</l>
        <l id="s6:l3" met="4" type="-+">O Kanker in de weerelds <rhyme label="c" type="m">min</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die 't Jufferdom <rhyme label="b" type="f" corresp="#s6:l2">behaagde</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
