    <melody>Nu laat ons allegaar</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NV laet ons alle-gaer danckbaer <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ons Heer ons Godt, ons <rhyme label="b" type="f">Vader</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die ons van bier, van dranck, van <rhyme label="a" type="m" corresp="#s1:l1">wijn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Versaet heeft <rhyme label="b" type="f" corresp="#s1:l2">alle-gader</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Van Vleesch en ander goede <rhyme label="c" type="m">spijs</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Ghecockt, bereyt seer <rhyme label="c" type="m" corresp="#s1:l5">menich-wijs</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Wilt hem u hert <rhyme label="d" type="f">aencleven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Hy en sal u niet <rhyme label="d" type="f" corresp="#s1:l7">begheven</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den Sone Godts <rhyme label="a" type="m">ghebenedijt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die willen wy mede <rhyme label="b" type="f">loven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die ons van sonden heeft <rhyme label="a" type="m" corresp="#s2:l1">bevrijt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wanneer wy waren <rhyme label="b" type="f" corresp="#s2:l2">verschoven</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Die ons soo minnelijck heeft <rhyme label="c" type="m">ontfaen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En inder noot niet af en sal <rhyme label="c" type="m" corresp="#s2:l5">gaen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Bemint hem in dit <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Hy en sal u niet <rhyme label="d" type="f" corresp="#s2:l7">begheven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wy dancken oock Godt den heyligen <rhyme label="a" type="m">Geest</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van sijnder <rhyme label="b" type="f">visitatie</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En hadde hy by ons niet <rhyme label="a" type="m" corresp="#s3:l1">gheweest</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ons vreught waer <rhyme label="b" type="f" corresp="#s3:l2">tribulatie</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy is een trooster in't <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Want sonder hem en connen wy <rhyme label="c" type="m" corresp="#s3:l5">niet</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Wilt hem u herte <rhyme label="d" type="f">bereyden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Hy en sal van u niet <rhyme label="d" type="f" corresp="#s3:l7">scheyden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wy willen den weerdt oock danck' <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die 't al heeft laeten <rhyme label="b" type="f">coocken</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Hy heeft soo wel bewaert sijn <rhyme label="a" type="m" corresp="#s4:l1">eer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Want ons en heeft niet <rhyme label="b" type="f" corresp="#s4:l2">ghebroken</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Wy dancken oock 't gheselschap <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s4:l6" met="4" type="-+">En zijt vrolijck met hert en <rhyme label="c" type="m" corresp="#s4:l5">soet</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Dat ghy hier zijt <rhyme label="d" type="f">ghecomen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Word danckbaerlijck <rhyme label="d" type="f" corresp="#s4:l7">ghenomen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wy en willen oock vergheten <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die van hier zijn <rhyme label="b" type="f">ghescheyden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Op datse Godt uyt alle <rhyme label="a" type="m" corresp="#s5:l1">verdriet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Al in zijn rijck wil <rhyme label="b" type="f" corresp="#s5:l2">leyden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Want soo wy doen sal ons <rhyme label="c" type="m">gheschien</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Wanneer wy uyt dit leven <rhyme label="c" type="m" corresp="#s5:l5">vlien</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Aldus soo wilt veur <rhyme label="d" type="f">desen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Eenen Pater noster <rhyme label="d" type="f" corresp="#s5:l7">lesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy willen ons wat verblijden // <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s6:l2" met="3" type="-+">'T is nu eenen dagh van <rhyme label="b" type="f">vreughden</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Van swaericheydt ons mijen // <rhyme label="a" type="m" corresp="#s6:l1">nu</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Soo moghen wy wat <rhyme label="b" type="f" corresp="#s6:l2">verjeughden</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Den boogh' mach altijt niet ghespannen <rhyme label="c" type="m">staen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Hierom soo laet nu droefheyt <rhyme label="c" type="m" corresp="#s6:l5">gaen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">'T is nu gheenen tijdt van <rhyme label="d" type="f">schreyen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Wy willen ons wat <rhyme label="d" type="f" corresp="#s6:l7">vermeyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
