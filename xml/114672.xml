  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LEeft, Xaveri, <rhyme label="a" type="m">eeuwelijck</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Leeft en bloeyt in 't hemels <rhyme label="a" type="m" corresp="#s1:l1">rijck</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Eeuwich zijt <rhyme label="b" type="m">ghebenedijdt</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Van millioenen <rhyme label="c" type="f">zielen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Voor u comst die hen soo <rhyme label="b" type="m" corresp="#s1:l3">wijdt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Van Godt in dolingh <rhyme label="c" type="f" corresp="#s1:l4">hielen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">G' hebt de Son hen op doen <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Doen den bruynen nacht <rhyme label="a" type="m" corresp="#s2:l1">vergaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Door u comen is het <rhyme label="b" type="m">licht</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Aen 'd Indiaense <rhyme label="c" type="f">landen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Godt, ghecomen in 't <rhyme label="b" type="m" corresp="#s2:l3">ghesicht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sijn liefde doet daer <rhyme label="c" type="f" corresp="#s2:l4">branden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wonder was u heylich <rhyme label="a" type="m">vier</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Daer ghy wyt en breet me <rhyme label="a" type="m" corresp="#s3:l1">hier</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Ghinght verbreyden Iesvs <rhyme label="b" type="m">naem</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Het Heydens volck hem <rhyme label="c" type="f">leeren</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Van den Heer ghemaect <rhyme label="b" type="m" corresp="#s3:l3">bequaem</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Om rijcken te <rhyme label="c" type="f" corresp="#s3:l4">bekeeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hier riept ghy altijt om <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">'t Is ghenoech, die tot den <rhyme label="a" type="m" corresp="#s4:l1">Heer</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Riept in troost, dat 't hert de <rhyme label="b" type="m">vreught</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Niet meer en kost <rhyme label="c" type="f">verdraghen</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Maer in 't cruys ghy seer <rhyme label="b" type="m" corresp="#s4:l3">verheught</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Godt soght meer te <rhyme label="c" type="f" corresp="#s4:l4">behaghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Door u dooden zijn <rhyme label="a" type="m">verwect</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Daer 't gehloof van u <rhyme label="a" type="m" corresp="#s5:l1">ghepreckt</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Me bevestight wert <rhyme label="b" type="m">gheplant</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Godt, door u, wonder <rhyme label="c" type="f">wercken</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Heeft ghebrocht aen alle <rhyme label="b" type="m" corresp="#s5:l3">kant</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Om het gheloof te <rhyme label="c" type="f" corresp="#s5:l4">stercken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Nu in Godt, die t' alle <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Met sijn aenschijn u <rhyme label="a" type="m" corresp="#s6:l1">verblijt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Siet ghy u gheluckich <rhyme label="b" type="m">saet</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Ghewonnen hier <rhyme label="c" type="f">beneden</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">In Godts liefde vast dat <rhyme label="b" type="m" corresp="#s6:l3">staet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Bewaert door u <rhyme label="c" type="f" corresp="#s6:l4">ghebeden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">d' Ooghen oock op ons eens <rhyme label="a" type="m">slaet</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">By den Heer ons by doch <rhyme label="a" type="m" corresp="#s7:l1">staet</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Op dat wy van sond' <rhyme label="b" type="m">bevrijt</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Met u Godt sien daer <rhyme label="c" type="f">boven</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">En daer eeuwelijck <rhyme label="b" type="m" corresp="#s7:l3">verblijt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Sijn goedtheyt met u <rhyme label="c" type="f" corresp="#s7:l4">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
