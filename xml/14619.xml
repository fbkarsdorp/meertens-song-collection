    <melody>Gezwinde bode van de min</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GEswinde bode vande <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Jesu mijn liefste <rhyme label="b" type="m">mijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy zijt den gront van al mijn <rhyme label="a" type="m" corresp="#s1:l1">sin</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Wast mijn ziele <rhyme label="b" type="m" corresp="#s1:l2">reyn</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Want ick weet dat ghy <rhyme label="c" type="m">zijt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Vol van troost, van jolijt en <rhyme label="d" type="m">vreught</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Dat een droevigh hert <rhyme label="d" type="m" corresp="#s1:l6">verheught</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Waer ick gae of <rhyme label="e" type="m">stae</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Binnen oft <rhyme label="f" type="m">buyten</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Smelt ick vol van <rhyme label="g" type="m">smert</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Want ghy roert mijn sondigh <rhyme label="g" type="m" corresp="#s1:l10">hert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als carbunckels u oogen <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Bruydegom van <rhyme label="b" type="m">cracht</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om te door-stralen u <rhyme label="a" type="m" corresp="#s2:l1">minnaer</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Onder 's werelts <rhyme label="b" type="m" corresp="#s2:l2">pracht</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Valsheyt, lust, treckt mijn <rhyme label="c" type="m">sin</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Ydelheyt tot gewin, maer <rhyme label="d" type="m">ghy</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Troost mijn ziel van herten <rhyme label="d" type="m" corresp="#s2:l6">bly</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Ben ick kleyn van <rhyme label="e" type="m">staet</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Arm en seer <rhyme label="f" type="m">veracht</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">Altijt zijt ghy <rhyme label="g" type="m">goet</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">En verwacht des sondaers <rhyme label="g" type="m" corresp="#s2:l10">boet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">U cruys, u doot, o Jesu <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Heeft my gantsch <rhyme label="b" type="m">doorwont</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Mijn sonde die my trueren <rhyme label="a" type="m" corresp="#s3:l1">doet</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Wt mijn siels <rhyme label="b" type="m" corresp="#s3:l2">afgront</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Neemt ghy wegh <rhyme label="c" type="m">minnelijck</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En belooft eeuwighlijck, u <rhyme label="d" type="m">fijn</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Onuytsprekelijck <rhyme label="d" type="m" corresp="#s3:l6">aenschijn</rhyme>.</l>
        <l id="s3:l8" met="3" type="+-">Moght ick u <rhyme label="e" type="m">weldaet</rhyme></l>
        <l id="s3:l9" met="3" type="+-">Inden hooghsten <rhyme label="f" type="m">graet</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Altijt danckbaer <rhyme label="g" type="m">zijn</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Geeft my dat, o Jesu <rhyme label="g" type="m" corresp="#s3:l10">mijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
