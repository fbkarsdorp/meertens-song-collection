<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11851</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Rozemond die lag gedoken</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VVIe sou immermeer <rhyme label="a" type="f">gelooven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hoe de Werreld word <rhyme label="b" type="m">gesolt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Hoe het onderst klimt na <rhyme label="a" type="f" corresp="#s1:l1">boven</rhyme>?</l>
        <l id="s1:l4" met="4" type="+-">En wort als een ball' <rhyme label="b" type="m" corresp="#s1:l2">gerolt</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">En dat door soo kleynen <rhyme label="c" type="m">dier</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Datter stoockt sijn oorloghs <rhyme label="c" type="m" corresp="#s1:l5">vyer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dit dier is de kleyne <rhyme label="a" type="f">Tonge</rhyme>:</l>
        <l id="s2:l2" met="4" type="+-">'t Eelst' en snoodste dat men <rhyme label="b" type="m">vint</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dit dier doet soo vreemde <rhyme label="a" type="f" corresp="#s2:l1">sprongen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Want men 't met geen stricken <rhyme label="b" type="m" corresp="#s2:l2">bind</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">'t Stiert ons als een roer het <rhyme label="c" type="m">Schip</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Nu in Haven, dan op <rhyme label="c" type="m" corresp="#s2:l5">Klip</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Het baert oorlogh en weer <rhyme label="a" type="f">vreede</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Het baert liefde, dan weer <rhyme label="b" type="m">twist</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Onder het schijn-heyligh <rhyme label="a" type="f" corresp="#s3:l1">kleeden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Brouwt het niet als snoode <rhyme label="b" type="m" corresp="#s3:l2">list</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Nu van soet en suur een <rhyme label="c" type="m">walgh</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">'t Brenght d'een aen, en van de <rhyme label="c" type="m" corresp="#s3:l5">galgh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Is een Adder, en vol <rhyme label="a" type="f">vleyen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Het maeckt recht en weder <rhyme label="b" type="m">krom</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Het kan lacchen, het kan <rhyme label="a" type="f" corresp="#s4:l1">schreyen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Nu gespraecksaem, dan weer <rhyme label="b" type="m" corresp="#s4:l2">stom</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Het kan smeecken en <rhyme label="c" type="m">verraen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Heeden helpen, morgen <rhyme label="c" type="m" corresp="#s4:l5">scha'en</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Het kan lastren en weer <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Het spreeckt waerheyt en <rhyme label="b" type="m">bedrieght</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Het kan heffen en <rhyme label="a" type="f" corresp="#s5:l1">verneeren</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Het schijnt erenst, en het <rhyme label="b" type="m" corresp="#s5:l2">lieght</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">'t Is een vyer dat sich <rhyme label="c" type="m">verspreyt</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Vyer vol <rhyme label="c" type="m" corresp="#s5:l5">ongerechtigheyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'t Baert de dood, en weer het <rhyme label="a" type="f">leven</rhyme>:</l>
        <l id="s6:l2" met="4" type="+-">Met dees tonge looft men <rhyme label="b" type="m">God</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Lof en laster kanse <rhyme label="a" type="f" corresp="#s6:l1">geven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Daer sy met haer naeste <rhyme label="b" type="m" corresp="#s6:l2">spot</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">'t Is een Hemel en een <rhyme label="c" type="m">Hel</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Gods en 's Duyvels <rhyme label="c" type="m" corresp="#s6:l5">mee-gesel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Het bevlecht ons eed'le <rhyme label="a" type="f">ziele</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Door ontuchte vuyle <rhyme label="b" type="m">reen</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Het gaet alle dingh <rhyme label="a" type="f" corresp="#s7:l1">vernielen</rhyme>;</l>
        <l id="s7:l4" met="4" type="+-">Eerbaerheyt en goede <rhyme label="b" type="m" corresp="#s7:l2">ze'en</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">'t Past op reeden noch <rhyme label="c" type="m">bescheyt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Tonge vol <rhyme label="c" type="m" corresp="#s7:l5">lichtvaerdigheyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Maer O Driemael wel <rhyme label="a" type="f">gezegent</rhyme>:</l>
        <l id="s8:l2" met="4" type="+-">‘Als dit ongetoomde <rhyme label="b" type="m">lid</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">‘Niet als goede stof <rhyme label="a" type="f" corresp="#s8:l1">bejegent</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">‘En beooght alleen dit <rhyme label="b" type="m" corresp="#s8:l2">wit</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">‘Dat het spreeckt met Godt <rhyme label="c" type="m">alleen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">‘Swanger van gesonde <rhyme label="c" type="m" corresp="#s8:l5">re'en</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Dan is 't een geschenck van <rhyme label="a" type="f">boven</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">‘En een vrucht van 's Levens <rhyme label="b" type="m">boom</rhyme>:</l>
        <l id="s9:l3" met="4" type="+-">‘Die daer altijdt God sal <rhyme label="a" type="f" corresp="#s9:l1">loven</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">‘Als een beeck, uyt desen <rhyme label="b" type="m" corresp="#s9:l2">stroom</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">‘Waer uyt Melck en Honigh <rhyme label="c" type="m">vloeyt</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">‘En voorts alle deughde <rhyme label="c" type="m" corresp="#s9:l5">groeyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Wilt dan Heer! ons tongh <rhyme label="a" type="f">bestieren</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">‘Datse doch geen boosheyt <rhyme label="b" type="m">spreeck</rhyme>:</l>
        <l id="s10:l3" met="4" type="+-">‘Datse mach ons ziel <rhyme label="a" type="f" corresp="#s10:l1">vercieren</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">‘Datse als een Son' <rhyme label="b" type="m" corresp="#s10:l2">door-breeckt</rhyme>:</l>
        <l id="s10:l5" met="4" type="+-">‘Datse wesen mach een <rhyme label="c" type="m">licht</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">‘Dat een yder Mensche <rhyme label="c" type="m" corresp="#s10:l5">sticht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
