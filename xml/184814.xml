  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAer is mynen wel <rhyme label="a" type="f">beminden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Waer is mynen <rhyme label="b" type="m">Bruydegom</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Waer sal ick, u, Jesu, <rhyme label="a" type="f" corresp="#s1:l1">vinden</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Ben ick niet meer <rhyme label="b" type="m" corresp="#s1:l2">willekom</rhyme>?</l>
        <l id="s1:l5" met="4" type="+-">Ah! wie heeft u <rhyme label="c" type="f">wegh-genomen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Wie heeft u uyt t'graf <rhyme label="d" type="m">geleydt</rhyme>?</l>
        <l id="s1:l7" met="4" type="+-">Roept doch, Jesu, ick sal <rhyme label="c" type="f" corresp="#s1:l5">komen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Op uw' stem ben ick <rhyme label="d" type="m" corresp="#s1:l6">bereydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Te vergeefs blyf ick hier <rhyme label="a" type="f">soecken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Ick sal dwaelen t'allen <rhyme label="b" type="m">kandt</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">En door-dringen al de <rhyme label="a" type="f" corresp="#s2:l1">hoecken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Tot dat ick vind' mynen <rhyme label="b" type="m" corresp="#s2:l2">pandt</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Seght my bergen, boomen, <rhyme label="c" type="f">haegen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Waer is die myn Ziel <rhyme label="d" type="m">bemindt</rhyme>?</l>
        <l id="s2:l7" met="4" type="+-">Thoont doch op myn bitter <rhyme label="c" type="f" corresp="#s2:l5">klaegen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Die is in myn hert <rhyme label="d" type="m" corresp="#s2:l6">geprint</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ah! wist ick eens, waer hem <rhyme label="a" type="f">vinden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Doodt, noch leven vrees ick <rhyme label="b" type="m">niet</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">k'Soud' aen hem my t'saemen <rhyme label="a" type="f" corresp="#s3:l1">binden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">k'Namp-hem-wegh, wie dit <rhyme label="b" type="m" corresp="#s3:l2">verbiedt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Laet my u maer noch eens <rhyme label="c" type="f">groeten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En aenschouwen desen <rhyme label="d" type="m">dagh</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Laet my, Jesu, voor uw' <rhyme label="c" type="f" corresp="#s3:l5">voeten</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Wat verlichten myn <rhyme label="d" type="m" corresp="#s3:l6">beklagh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Is myn hope dan <rhyme label="a" type="f">verloren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Kryght myn schreyen geene <rhyme label="b" type="m">baet</rhyme>?</l>
        <l id="s4:l3" met="4" type="+-">Wilt myn Bruydegom <rhyme label="a" type="f" corresp="#s4:l1">verkoren</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">My ontrecken syn <rhyme label="b" type="m" corresp="#s4:l2">gelaet</rhyme>?</l>
        <l id="s4:l5" met="4" type="+-">Hier sal ick in traenen <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Ende blyven aen dit <rhyme label="d" type="m">graf</rhyme>:</l>
        <l id="s4:l7" met="4" type="+-">Tot dat hy my wordt <rhyme label="c" type="f" corresp="#s4:l5">gegeven</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Ruckt my geen gewelt hier <rhyme label="d" type="m" corresp="#s4:l6">af</rhyme>.</l>
      </lg>
    </lg>
  </text>
