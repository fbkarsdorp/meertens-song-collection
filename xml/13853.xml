  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VEel klughjes, en deuntjes bedrijven de <rhyme label="a" type="m">Ieught</rhyme>,</l>
        <l id="s1:l2" met="1" type="-+">Als ‘t <rhyme label="b" type="f">spelen</rhyme>,</l>
        <l id="s1:l3" met="1" type="-+">En’t <rhyme label="b" type="f" corresp="#s1:l2">quelen</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Heur gheesten <rhyme label="a" type="m" corresp="#s1:l1">verheught</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Waer yemandt dan <rhyme label="c" type="m">treurt</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Daer yder dus <rhyme label="c" type="m" corresp="#s1:l5">neurt</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Heeft lust noch vermaecken in vrolijcke <rhyme label="a" type="m" corresp="#s1:l1">vreught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Op Feesten, by Vrienden, aen Tafel, by ‘t <rhyme label="a" type="m">Bier</rhyme>,</l>
        <l id="s2:l2" met="1" type="-+">By <rhyme label="b" type="f">Susjes</rhyme>,</l>
        <l id="s2:l3" met="1" type="-+">By <rhyme label="b" type="f" corresp="#s2:l2">Kusjes</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">By vleughelent <rhyme label="a" type="m" corresp="#s2:l1">vyer</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Op waghen, in <rhyme label="c" type="m">Schuyt</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">By Bruygom en <rhyme label="c" type="m" corresp="#s2:l5">Bruydt</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Daer hoortmen, daer sietmen, daer maecktmen goet <rhyme label="a" type="m" corresp="#s2:l1">chier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De jonghe Luy deunen, en scheppen ‘er <rhyme label="a" type="m">lust</rhyme></l>
        <l id="s3:l2" met="1" type="-+">In <rhyme label="b" type="f">quickjes</rhyme>,</l>
        <l id="s3:l3" met="1" type="-+">In <rhyme label="b" type="f" corresp="#s3:l2">strickjes</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">En vinden ‘er <rhyme label="a" type="m" corresp="#s3:l1">rust</rhyme></l>
        <l id="s3:l5" met="2" type="-+">In kluchtighe <rhyme label="c" type="m">praet</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Hoe ‘t koddigher <rhyme label="c" type="m" corresp="#s3:l5">gaet</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Hoe datmen de lusjes te vyeriger <rhyme label="a" type="m" corresp="#s3:l1">blust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Tsa <rhyme label="a" type="m">veerdigh</rhyme>,</l>
        <l id="s4:l2" met="1" type="-+">En geestigh, in deughden en <rhyme label="b" type="f">eer</rhyme>’,</l>
        <l id="s4:l3" met="1" type="-+">Weest lustigh// en <rhyme label="b" type="f" corresp="#s4:l2">rustigh</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Staegh meerder en <rhyme label="a" type="m" corresp="#s4:l1">meer</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Maer denckt op de <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Hoe snellijckse <rhyme label="c" type="m" corresp="#s4:l5">glijdt</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Tsa, rep u, en keer dan wel stilletjes <rhyme label="a" type="m" corresp="#s4:l1">weer</rhyme>.</l>
      </lg>
    </lg>
  </text>
