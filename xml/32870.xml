    <melody>O rad van avontuur</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="narratives">verhalen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Die nijdicheyt der <rhyme label="a" type="f">Ioden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die is gheweest alzoo <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Om al die Christenen te <rhyme label="a" type="f" corresp="#s1:l1">dooden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Was haer meninghe doen <rhyme label="b" type="m" corresp="#s1:l2">bloot</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Herodes Agrippa wilt <rhyme label="c" type="f">hooren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Die regeerde op dat <rhyme label="d" type="m">pas</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wt vreemden stamme <rhyme label="c" type="f" corresp="#s1:l5">gebooren</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Zoo Iacob Prophenteerde te <rhyme label="c" type="f" corresp="#s1:l5">vooren</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Want het rijck haer nv benomen <rhyme label="d" type="m" corresp="#s1:l6">was</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dese om die Ioden te <rhyme label="a" type="f">behaeghen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Heeft recht voor Paesschen hoort mijn <rhyme label="b" type="m">vermaen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Iacobus het hooft af <rhyme label="a" type="f" corresp="#s2:l1">gheslaeghen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En Petrus inder Kercker <rhyme label="b" type="m" corresp="#s2:l2">ghedaen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Om nae Paesschen hem te <rhyme label="c" type="f">dooden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dit was doen zynen <rhyme label="d" type="m">opsedt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Want het behaechde zeer den <rhyme label="c" type="f" corresp="#s2:l5">Ioden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Datmen die Christenen deden wt <rhyme label="c" type="f" corresp="#s2:l5">roden</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Mits zy leefden niet al nae haeren <rhyme label="d" type="m" corresp="#s2:l6">weth</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Daer en gheenen raet tegens Gods <rhyme label="a" type="f">wercken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Alsmen hier aen Petrus <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Godt can den benauden <rhyme label="a" type="f" corresp="#s3:l1">verstercken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Als het ghebedt voor haer <rhyme label="b" type="m" corresp="#s3:l2">gheschiet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Want Petrus sliep sonder <rhyme label="c" type="f">trueren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Al scheen zijn sterfdach <rhyme label="d" type="m">ree</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">T’selue soude ons oock <rhyme label="c" type="f" corresp="#s3:l5">ghebueren</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Wy souden niet vrese <rhyme label="c" type="f" corresp="#s3:l5">dueren</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Dat wy leefden als Petrus <rhyme label="d" type="m" corresp="#s3:l6">dee</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Inden nacht hoort mijn <rhyme label="a" type="f">ghewaeghen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Worde Petrus zeer <rhyme label="b" type="m">verbaest</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Gods Engel heeft hem <rhyme label="a" type="f" corresp="#s4:l1">gheslaegen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hy soude opstaen metter <rhyme label="b" type="m" corresp="#s4:l2">haest</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Sijn schoenen soude hy <rhyme label="c" type="f">antrecken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ende gorden hem zeer <rhyme label="d" type="m">ras</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Al deed hem den Engel <rhyme label="c" type="f" corresp="#s4:l5">wecken</rhyme></l>
        <l id="s4:l8" met="3" type="-+">En al dese saecken <rhyme label="c" type="f" corresp="#s4:l5">ontdecken</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Een Visioen meende hy dat het <rhyme label="d" type="m" corresp="#s4:l6">was</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ouerdenckt hier eens Gods <rhyme label="a" type="f">saecken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En sijn wonderlycken <rhyme label="b" type="m">macht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Want daer waren by Petrus te <rhyme label="a" type="f" corresp="#s5:l1">waecken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Vier quartier Ruyters wel <rhyme label="b" type="m" corresp="#s5:l2">bedacht</rhyme></l>
        <l id="s5:l5" met="3" type="-+">En noch nae Lucas <rhyme label="c" type="f">verclaren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Twee Soldaten hoort mijn <rhyme label="d" type="m">vermaen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">By hem om wel te <rhyme label="c" type="f" corresp="#s5:l5">bewaeren</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Maer Godt heeft dese <rhyme label="c" type="f" corresp="#s5:l5">allegaeren</rhyme></l>
        <l id="s5:l9" met="3" type="-+">In een grooten slaep <rhyme label="d" type="m" corresp="#s5:l6">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dus is Peter metten Engel <rhyme label="a" type="f">ghecomen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Door al Herodes <rhyme label="b" type="m">wacht</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Niet met allen hebben zy <rhyme label="a" type="f" corresp="#s6:l1">vernomen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Al inden donckeren <rhyme label="b" type="m" corresp="#s6:l2">nacht</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Een poorte met <rhyme label="c" type="f">verlanghen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Met eenen yzeren <rhyme label="d" type="m">door</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Is van selfs op <rhyme label="c" type="f" corresp="#s6:l5">geganghen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Voor Petrus den <rhyme label="c" type="f" corresp="#s6:l5">gheuanghen</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Als zy daer quamen <rhyme label="d" type="m" corresp="#s6:l6">voor</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus quamen zy op een <rhyme label="a" type="f">strate</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Buyten den kercker <rhyme label="b" type="m">ras</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Daer heeft een Engel Petrus <rhyme label="a" type="f" corresp="#s7:l1">verlaten</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Want hy doen geholpen <rhyme label="b" type="m" corresp="#s7:l2">was</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Wy moeten ons wel onder <rhyme label="c" type="f">winden</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Mits die schriftuere dat <rhyme label="d" type="m">ghebiedt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Om Menschen hulp te <rhyme label="c" type="f" corresp="#s7:l5">vinden</rhyme></l>
        <l id="s7:l8" met="3" type="-+">En ons alzoo aen creatueren te <rhyme label="c" type="f" corresp="#s7:l5">binden</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Dat het niet teghen Godt en <rhyme label="d" type="m" corresp="#s7:l6">strijdt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die ketenen daer Petrus mee was <rhyme label="a" type="f">gebonden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Binnen Iherusalem op dat <rhyme label="b" type="m">pas</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Worden nu tot Romen <rhyme label="a" type="f" corresp="#s8:l1">geuonden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Oock dien, doen hy aldaer gebonden <rhyme label="b" type="m" corresp="#s8:l2">was</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Op heden door Gods <rhyme label="c" type="f">wonderheden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Syn sy in malcander <rhyme label="d" type="m">ghegroyt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Als een kettinck met volle <rhyme label="c" type="f" corresp="#s8:l5">leden</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Daer heeft menich vroom Christ’en <rhyme label="c" type="f" corresp="#s8:l5">ghetrede</rhyme></l>
        <l id="s8:l9" met="3" type="-+">Hier toe, door arbeyt hem <rhyme label="d" type="m" corresp="#s8:l6">ghespoyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
