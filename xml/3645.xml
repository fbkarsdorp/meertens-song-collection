  <author>Pieter Datheen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALS een hert ghejaeght, O <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dat verssche water <rhyme label="b" type="m">beghÄ™ert</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Also dorst myn siel oock <rhyme label="a" type="f" corresp="#s1:l1">seere</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Nae v myn Godt hoogh' <rhyme label="b" type="m" corresp="#s1:l2">gheeert</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">End spreeckt by haer, met <rhyme label="c" type="m">geklagh</rhyme>:</l>
        <l id="s1:l6" met="4" type="+-">O Heer wanneer komt dien <rhyme label="c" type="m" corresp="#s1:l5">dag</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Dat ick doch by v sal <rhyme label="d" type="f">wesen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">End sien v aenschijn <rhyme label="d" type="f" corresp="#s1:l7">ghepresen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Myn traenen ende myn <rhyme label="a" type="f">klachten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Sijn myn spijs die my steedts <rhyme label="b" type="m">voedt</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Als men my vraeght met <rhyme label="a" type="f" corresp="#s2:l1">verachten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Waer is nu v' Godt so <rhyme label="b" type="m" corresp="#s2:l2">goet</rhyme>?</l>
        <l id="s2:l5" met="4" type="+-">Ick smelt' als ick denck' daer <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Hoe ick voormaels plagh te <rhyme label="c" type="m" corresp="#s2:l5">gaen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Met een hoop volcks hier te <rhyme label="d" type="f">lande</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Om v Heer te doen <rhyme label="d" type="f" corresp="#s2:l7">offrande</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Waerom wilt ghy v so <rhyme label="a" type="f">quellen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">End beroerdt sijn, O siel <rhyme label="b" type="m">myn</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Wilt gantsch v' hoep op Godt <rhyme label="a" type="f" corresp="#s3:l1">stellen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Van v sal hy ghedanckt <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Als hy doer sijn aenschijn <rhyme label="c" type="m">klaer</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Sal wegh nemen v' cruys <rhyme label="c" type="m" corresp="#s3:l5">swaer</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Dies O Godt van my niet <rhyme label="d" type="f">wycket</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Want myn hert' my gantsch <rhyme label="d" type="f" corresp="#s3:l7">beswycket</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ick ben uwes seer <rhyme label="a" type="f">ghedachtigh</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Oock aen des Iordaenen <rhyme label="b" type="m">kant</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">End' uwer goedtheit seer <rhyme label="a" type="f" corresp="#s4:l1">krachtigh</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">In Hermon dat koude <rhyme label="b" type="m" corresp="#s4:l2">landt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">End aen Misar den bergh <rhyme label="c" type="m">bloot</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Daer d'een diepte d'ander <rhyme label="c" type="m" corresp="#s4:l5">groot</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Toeschreyt, end daer die <rhyme label="d" type="f">tempeesten</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Ouer my gaen minst end <rhyme label="d" type="f" corresp="#s4:l7">meeste</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Al die groote <rhyme label="a" type="f">waterstromen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Sijn Heer ouer my <rhyme label="b" type="m">ghegaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">End my ouer t'hooft <rhyme label="a" type="f" corresp="#s5:l1">gekomen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Maer ghy hebt my <rhyme label="b" type="m" corresp="#s5:l2">byghestaen</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">S'daeghs toont ghy my v' <rhyme label="c" type="m">goedtheit</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">End s'nachts v' <rhyme label="c" type="m" corresp="#s5:l5">barmherticheit</rhyme>:</l>
        <l id="s5:l7" met="4" type="+-">Dies sal ick v Heer <rhyme label="d" type="f">belyden</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Ghy hoedt myn siel t'allen <rhyme label="d" type="f" corresp="#s5:l7">tyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ick sprack tot Godt: O Godt <rhyme label="a" type="f">krachtigh</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Waer om vergheett' ghy my <rhyme label="b" type="m">gaer</rhyme>?</l>
        <l id="s6:l3" met="4" type="+-">Waer om moet ick wesen <rhyme label="a" type="f" corresp="#s6:l1">klachtigh</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Benauwt doer die boos' <rhyme label="b" type="m" corresp="#s6:l2">eenpaer</rhyme>?</l>
        <l id="s6:l5" met="4" type="+-">Ick gheuoel' haer smaeden <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">D'welck my doer die beenen <rhyme label="c" type="m" corresp="#s6:l5">gaet</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Als se tot uwer <rhyme label="d" type="f">oneere</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Spreken: Waer blijft nu de <rhyme label="d" type="f" corresp="#s6:l7">Heere</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Waer om wilt ghy v so <rhyme label="a" type="f">quellen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">End beroert sijn, O siel' <rhyme label="b" type="m">myn</rhyme>?</l>
        <l id="s7:l3" met="4" type="+-">Wilt gantsch v' hop' op Godt <rhyme label="a" type="f" corresp="#s7:l1">stellen</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Van v sal hy ghedanckt <rhyme label="b" type="m" corresp="#s7:l2">sijn</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Om dat hy is, so men <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Myn heyl, die my jonste <rhyme label="c" type="m" corresp="#s7:l5">biedt</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Dies myn siel' wilt v <rhyme label="d" type="f">verblijden</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Godt is't dien ick bidd' in't <rhyme label="d" type="f" corresp="#s7:l7">lijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
