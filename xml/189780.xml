  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MAch ik u nu met een <rhyme label="a" type="m">kus</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Uwe roode lipjes <rhyme label="b" type="f">raaken</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Schoone zuiker zoete <rhyme label="a" type="m" corresp="#s1:l1">zus</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En de liefste kuschjes <rhyme label="b" type="f" corresp="#s1:l2">smaaken</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Die een God begeeren <rhyme label="c" type="m">kan</rhyme>?</l>
        <l id="s1:l6" met="4" type="+-">Ja myn Liefste, Ja wel <rhyme label="c" type="m" corresp="#s1:l5">an</rhyme>!</l>
        <l id="s1:l7" met="3" type="+-">Dat 's voor uwe <rhyme label="b" type="f" corresp="#s1:l2">kaaken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Daar 's een kusje voor je <rhyme label="a" type="m">mondt</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En voor 't voorhooft, zonder <rhyme label="b" type="f">vlekken</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Laat myn mondt, ter dezer <rhyme label="a" type="m" corresp="#s2:l1">stondt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Uw aanminnig oog <rhyme label="b" type="f" corresp="#s2:l2">bedekken</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Die het ed'le <rhyme label="c" type="m">minnevuur</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Eider oogenblik, elk <rhyme label="c" type="m" corresp="#s2:l5">uur</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">In my kan <rhyme label="b" type="f" corresp="#s2:l2">ontdekken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">En, staat my het kuschen <rhyme label="a" type="m">vry</rhyme>;</l>
        <l id="s3:l2" met="4" type="+-">Poesle, blanke, <rhyme label="b" type="f">vette</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Laat my dan een kus of <rhyme label="a" type="m" corresp="#s3:l1">dry</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Op 't spoor der minne <rhyme label="b" type="f" corresp="#s3:l2">wetten</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Drukken op uw blanken <rhyme label="c" type="m">hals</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En op uw boesem, glat en <rhyme label="c" type="m" corresp="#s3:l5">mals</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Puik schoone, <rhyme label="b" type="f" corresp="#s3:l2">onbesmette</rhyme>.</l>
      </lg>
    </lg>
  </text>
