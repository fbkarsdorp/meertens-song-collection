    <tags/>
    <melody>Rozemond verlaat uw stal</melody>
  <author>Gerrit Manheer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Lang, lang leev' de <rhyme label="a" type="m">Batavier</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Kroon zyn kruin met <rhyme label="a" type="m" corresp="#s1:l1">Eerlauwrier</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">Hy weet, wat het is <rhyme label="b" type="f">beminnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Daar zyn moedig, kloppend <rhyme label="c" type="m">hart</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Voor zyn land en <rhyme label="b" type="f" corresp="#s1:l3">zielvriendinnen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Allerlei gevaren <rhyme label="c" type="m" corresp="#s1:l4">tart</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Eischt de huiszorg zyne <rhyme label="a" type="m">vlyt</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die word aan zyn lust <rhyme label="a" type="m" corresp="#s2:l1">gewyd</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Noopen hem de <rhyme label="b" type="f">pavillioenen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Van de blonde <rhyme label="c" type="m">Chiteré</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Hy kan zorgen; maar ook <rhyme label="b" type="f" corresp="#s2:l3">zoenen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En leeft met zyn staat te <rhyme label="c" type="m" corresp="#s2:l4">vreê</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Klinkt de schelle <rhyme label="a" type="m">krygstrompet</rhyme>;</l>
        <l id="s3:l2" met="4" type="+-">Word het heldenstaal <rhyme label="a" type="m" corresp="#s3:l1">gewet</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Dreigen 't Vaderland <rhyme label="b" type="f">gevaren</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dan verlaat hy, liefde en <rhyme label="c" type="m">huis</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dan tragt hy naar <rhyme label="b" type="f" corresp="#s3:l3">lauwerblaren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Onder 't woelend <rhyme label="c" type="m" corresp="#s3:l4">krygsgedruis</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Lang, lang leev' de <rhyme label="a" type="m">Batavier</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Kroon zyn kruin met <rhyme label="a" type="m" corresp="#s4:l1">Eerlanwrier</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Eert zyn min, Bataafsche <rhyme label="b" type="f">Vrouwen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Gy, en 't lieve <rhyme label="c" type="m">Belgica</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Mogen zich op hem <rhyme label="b" type="f" corresp="#s4:l3">betrouwen</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">Zingt zyn glorie, vroeg en <rhyme label="c" type="m" corresp="#s4:l4">spâ</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Voor u klopt zyn <rhyme label="a" type="m">heldenhart</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dat, in uwe vreugd en <rhyme label="a" type="m" corresp="#s5:l1">smart</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Met u deelt, Bataafsche <rhyme label="b" type="f">Vrouwen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Gy, en 't lieve <rhyme label="c" type="m">Belgica'</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Mogen zich op hem <rhyme label="b" type="f" corresp="#s5:l3">bertrouwen</rhyme>.</l>
        <l id="s5:l6" met="4" type="+-">Zingt zyn glorie, vroeg en <rhyme label="c" type="m" corresp="#s5:l4">spâ</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
