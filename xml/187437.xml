    <melody>Se tu mi ami se sospiri</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Waerom toch zo <rhyme label="a" type="f">ontevreden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">ô Mijn ziel! - Waervoor <rhyme label="b" type="m">gebeeft</rhyme>? -</l>
        <l id="s1:l3" met="4" type="+-">Kom, welaen, in <rhyme label="a" type="f" corresp="#s1:l1">tegenheden</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Onvertzaegd, - uw jesus <rhyme label="b" type="m" corresp="#s1:l2">leeft</rhyme>! -</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hij, die ieders lot en <rhyme label="a" type="f">wegen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Eeuwig wijs geregeld <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hij, de Bron van allen <rhyme label="a" type="f" corresp="#s2:l1">zegen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hij, uw Vriend, uw jesus <rhyme label="b" type="m" corresp="#s2:l2">leeft</rhyme>! -</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die, in smart, in angst, in <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Troost, en hulp, en redding <rhyme label="b" type="m">geeft</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'t Zwoegend harte wil <rhyme label="a" type="f" corresp="#s3:l1">verblijden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Hij, uw God, uw jesus <rhyme label="b" type="m" corresp="#s3:l2">leeft</rhyme>! -</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ja, hoe diep ter neêr <rhyme label="a" type="f">gebogen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Zijt ge aen Zijnen dienst <rhyme label="b" type="m">verkleeft</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">ô! Hij zal uw tranen <rhyme label="a" type="f" corresp="#s4:l1">drogen</rhyme>: -</l>
        <l id="s4:l4" met="4" type="+-">Rust, mijn ziel! - Uw jesus <rhyme label="b" type="m" corresp="#s4:l2">leeft</rhyme>! -</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Durft gij op geen uitkomst <rhyme label="a" type="f">hopen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Schijnt, daer 't alles u <rhyme label="b" type="m">begeeft</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">U geen weg van redding <rhyme label="a" type="f" corresp="#s5:l1">open</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">ô Geduld! - Uw jesus <rhyme label="b" type="m" corresp="#s5:l2">leeft</rhyme>! -</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wen, door 't angstig, zwoegend <rhyme label="a" type="f">hijgen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">'t Spraeklid aen 't gehemelt' <rhyme label="b" type="m">kleeft</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En gij macht'loos neêr moet <rhyme label="a" type="f" corresp="#s6:l1">zijgen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Nog geen nood! - Uw jesus <rhyme label="b" type="m" corresp="#s6:l2">leeft</rhyme>! -</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wen u, afgemat van <rhyme label="a" type="f">zorgen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">'t Doodsgevaer voor de oogen <rhyme label="b" type="m">zweeft</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">'t Uitzicht op den blijdsten <rhyme label="a" type="f" corresp="#s7:l1">morgen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Streelt dan 't hart; - want jesus <rhyme label="b" type="m" corresp="#s7:l2">leeft</rhyme>! -</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Wen, in de uiterste <rhyme label="a" type="f">oogenblikken</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">'t Afgefolterd lichaem <rhyme label="b" type="m">sneeft</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Zal dit woord de ziel <rhyme label="a" type="f" corresp="#s8:l1">verkwikken</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">Sterf gerust, - Uw jesus <rhyme label="b" type="m" corresp="#s8:l2">leeft</rhyme>! -</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Ja; triömf! - En ik zal <rhyme label="a" type="f">leven</rhyme>!</l>
        <l id="s9:l2" met="4" type="+-">Hoop, die 't al te boven <rhyme label="b" type="m">streeft</rhyme>! -</l>
        <l id="s9:l3" met="4" type="+-">Troost, mij door 't geloof <rhyme label="a" type="f" corresp="#s9:l1">gegeven</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Ja, triömf! - Mijn jesus <rhyme label="b" type="m" corresp="#s9:l2">leeft</rhyme>! -</l>
      </lg>
    </lg>
  </text>
</song>
