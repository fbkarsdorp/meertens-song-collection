    <melody>In de stad daar men blijdschap hoort</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIe wilt hooren een nieuw <rhyme label="a" type="m">liet</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Soo van blyschap als <rhyme label="a" type="m" corresp="#s1:l1">verdriet</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Hoe den eenens <rhyme label="b" type="m">ongheluck</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Doodt en <rhyme label="c" type="f">over-lyden</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Wirdt den anderens <rhyme label="b" type="m" corresp="#s1:l3">gheluck</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Leven en <rhyme label="c" type="f" corresp="#s1:l4">verblyden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'k Sagh twee Vryers om een <rhyme label="a" type="m">Bruydt</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Leelyck spelen mesken <rhyme label="a" type="m" corresp="#s2:l1">uyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Want den eenen van deês <rhyme label="b" type="m">twee</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Wirdt daer doodt <rhyme label="c" type="f">ghesteken</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">En den tweeden is door <rhyme label="b" type="m" corresp="#s2:l3">wee</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Van een wond' <rhyme label="c" type="f" corresp="#s2:l4">besweken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als deês Honden om een <rhyme label="a" type="m">been</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Soo fel vochten teghen <rhyme label="a" type="m" corresp="#s3:l1">een</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Quam den derden <rhyme label="b" type="m">Serviteur</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Dese Vryster <rhyme label="c" type="f">vraghen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En gingh met de Vryster <rhyme label="b" type="m" corresp="#s3:l3">deur</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Naer syn wel <rhyme label="c" type="f" corresp="#s3:l4">behaghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Die 't gheluck heeft leydt de <rhyme label="a" type="m">Bruydt</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Naer de Kerck ten huysen <rhyme label="a" type="m" corresp="#s4:l1">uyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daerom is het boos <rhyme label="b" type="m">ghedaen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Dat de <rhyme label="c" type="f">Duëllisten</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Soo licht om een Licht-mis, <rhyme label="b" type="m" corresp="#s4:l3">gaen</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Lyfen Ziel' <rhyme label="c" type="f" corresp="#s4:l4">verquisten</rhyme>.</l>
      </lg>
    </lg>
  </text>
