    <melody>Psalm 006 Datheen</melody>
    <categories>
      <category translation="politics and history">politiek en geschiedenis</category>
      <category translation="emotions">emoties</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Heere wilt u <rhyme label="a" type="f">erbarmen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Over tsuchten en <rhyme label="a" type="f" corresp="#s1:l1">karmen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van ons Armen <rhyme label="b" type="m">eenpaer</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Want wy zijn in groot <rhyme label="c" type="f">lijden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">O Heer wilt ons <rhyme label="c" type="f" corresp="#s1:l4">bevrijden</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Uut dees benautheyt <rhyme label="b" type="m" corresp="#s1:l3">swaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O Heer wilt van ons <rhyme label="a" type="f">weeren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die den Tienden Penninck <rhyme label="a" type="f" corresp="#s2:l1">begheeren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die tLandt regieren <rhyme label="b" type="m">fel</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">End u Volck <rhyme label="c" type="f">overlasten</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Ontslaet ons dese <rhyme label="c" type="f" corresp="#s2:l4">gasten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En van so groot <rhyme label="b" type="m" corresp="#s2:l3">ghequel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Haer Hooft is Duck de <rhyme label="a" type="f">Alve</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">De Paus die staet het <rhyme label="a" type="f" corresp="#s3:l1">halve</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Om tLandt te beroven <rhyme label="b" type="m">onsoet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Legghen sy listige <rhyme label="c" type="f">laghen</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">O Heer wiltse <rhyme label="c" type="f" corresp="#s3:l4">verjaghen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dit snoot Spaensche <rhyme label="b" type="m" corresp="#s3:l3">ghebroet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sijn dit niet fraey <rhyme label="a" type="f">ghesellen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sy nemen Wol en <rhyme label="a" type="f" corresp="#s4:l1">Vellen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Al van ons Schaepkens <rhyme label="b" type="m">slecht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die lancx den dijcke <rhyme label="c" type="f">loopen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">O Heer laetse <rhyme label="c" type="f" corresp="#s4:l4">becoopen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Seven dobbel haer <rhyme label="b" type="m" corresp="#s4:l3">onrecht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghy segt O Heer van <rhyme label="a" type="f">allen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat Babel is <rhyme label="a" type="f" corresp="#s5:l1">ghevallen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Coemt maeckt u Woorden <rhyme label="b" type="m">waer</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Laet nu den Slach <rhyme label="c" type="f">ghebeuren</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat Babylon sal <rhyme label="c" type="f" corresp="#s5:l4">treuren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Met zijn valsche <rhyme label="b" type="m" corresp="#s5:l3">dienaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O Heere Godt <rhyme label="a" type="f">almachtich</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">U Woorden zijn <rhyme label="a" type="f" corresp="#s6:l1">waerachtich</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">So Joannes schrijft <rhyme label="b" type="m">openbaer</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Dat haren val sal <rhyme label="c" type="f">comen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">In een ure, dan salmen <rhyme label="c" type="f" corresp="#s6:l4">romen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Uwer woorden <rhyme label="b" type="m" corresp="#s6:l3">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wee u Moorders <rhyme label="a" type="f">onreyne</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die sulck vreemt gespuys <rhyme label="a" type="f" corresp="#s7:l1">vileyne</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">So troulick bystant <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Om u trouwe <rhyme label="c" type="f">Nabueren</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Te vernielen en <rhyme label="c" type="f" corresp="#s7:l4">verscheuren</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Als Wolven seer <rhyme label="b" type="m" corresp="#s7:l3">verwoet</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
