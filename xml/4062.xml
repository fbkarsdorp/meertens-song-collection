  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MAria <rhyme label="a" type="f">coninghinne</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mijn troost mijn <rhyme label="b" type="m">toeuerlaet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Vercrijcht mi ws kints <rhyme label="a" type="f" corresp="#s1:l1">minne</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ende berou voer mijn <rhyme label="b" type="m" corresp="#s1:l2">misdaet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want ic wort wel <rhyme label="a" type="f">gheware</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat Iesus minne is <rhyme label="b" type="m">goet</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Want si cant herte <rhyme label="a" type="f" corresp="#s2:l1">verclaren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ende gheuen goeden <rhyme label="b" type="m" corresp="#s2:l2">moet</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">So wie yet sal <rhyme label="a" type="f">beghinnen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Tot sinen lof ende <rhyme label="b" type="m">eere</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Staet hi niet inder <rhyme label="a" type="f" corresp="#s3:l1">minnen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Het sal hem verdrieten <rhyme label="b" type="m" corresp="#s3:l2">seere</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dus is mi inden <rhyme label="a" type="f">sinne</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat alle minen dienst is <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Doe icken sonder <rhyme label="a" type="f" corresp="#s4:l1">minne</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Traghelijc / oft in <rhyme label="b" type="m" corresp="#s4:l2">verdriet</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hier om wilt mijnre <rhyme label="a" type="f">ontfermen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Maria edel <rhyme label="b" type="m">vrou</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Ende wilt mi toch <rhyme label="a" type="f" corresp="#s5:l1">beschermen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met Iesus minnen ende <rhyme label="b" type="m" corresp="#s5:l2">v</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Och had ick mi <rhyme label="a" type="f">begheuen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Doen ick out was thien <rhyme label="b" type="m">iaer</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Totten gheesteliken <rhyme label="a" type="f" corresp="#s6:l1">leuen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ick waer sijn minne <rhyme label="b" type="m" corresp="#s6:l2">naer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Nu mach ick wel <rhyme label="a" type="f">beclaghen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Beweenen tot alder <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Dat ick mijn ionghe <rhyme label="a" type="f" corresp="#s7:l1">daghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Aldus ben worden <rhyme label="b" type="m" corresp="#s7:l2">quijt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Nu troost mi <rhyme label="a" type="f">keyserinne</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Maria suyver <rhyme label="b" type="m">maecht</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Sterct mi doer v <rhyme label="a" type="f" corresp="#s8:l1">minne</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Droefheyt van mi <rhyme label="b" type="m" corresp="#s8:l2">veriaecht</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O mensche merct van <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Swijcht stil / hoort mijn <rhyme label="b" type="m">vermaen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Ende scherpet uwe <rhyme label="a" type="f" corresp="#s9:l1">sinnen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Soe moechdy mi <rhyme label="b" type="m" corresp="#s9:l2">verstaen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">V claghen ende <rhyme label="a" type="f">begheeren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Dat heb ick wel <rhyme label="b" type="m">ghehoort</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Laet nu die werelt <rhyme label="a" type="f" corresp="#s10:l1">varen</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Ende wilt mi dienen <rhyme label="b" type="m" corresp="#s10:l2">voort</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ick sal v minn <rhyme label="a" type="f">verweruen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Van Iesu minen <rhyme label="b" type="m">soon</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Maer denct lieuver te <rhyme label="a" type="f" corresp="#s11:l1">steruen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Dan teghen hem te <rhyme label="b" type="m" corresp="#s11:l2">doen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wanneer ghi v cont <rhyme label="a" type="f">gheuen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Daer toe met uwen <rhyme label="b" type="m">sin</rhyme></l>
        <l id="s12:l3" met="3" type="-+">So wilt in vruechden <rhyme label="a" type="f" corresp="#s12:l1">leuen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Want ghi hebt mijns kints <rhyme label="b" type="m" corresp="#s12:l2">min</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Och wie sal mi <rhyme label="a" type="f">verleenen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Alsoe int herte te <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Oft hoe sal ick <rhyme label="a" type="f" corresp="#s13:l1">verdienen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Soe goeden sin te <rhyme label="b" type="m" corresp="#s13:l2">ontfaen</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">O mensche waer sijn v <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Hoe dwaeldy aldus <rhyme label="b" type="m">seer</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Wilt toch in v <rhyme label="a" type="f" corresp="#s14:l1">bekinnen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Wat voer v heeft ghedaen die <rhyme label="b" type="m" corresp="#s14:l2">heer</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Veel meer dan ghi cont <rhyme label="a" type="f">wenschen</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Heeft hi voer v <rhyme label="b" type="m">verdient</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Maer ghi sijt traech te <rhyme label="a" type="f" corresp="#s15:l1">eyschen</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Ende segghen heer <rhyme label="b" type="m" corresp="#s15:l2">verleent</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Ghi en cont niet <rhyme label="a" type="f">begheeren</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Eest salich / ten sal v <rhyme label="b" type="m">gheschien</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Maer trouwen sout v <rhyme label="a" type="f" corresp="#s16:l1">deeren</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Ten gheschiet v een oft <rhyme label="b" type="m" corresp="#s16:l2">gheen</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Waerom sout ghi dan <rhyme label="a" type="f">trueren</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Oft v verslaen so <rhyme label="b" type="m">seer</rhyme>?</l>
        <l id="s17:l3" met="3" type="-+">Had v God niet <rhyme label="a" type="f" corresp="#s17:l1">vercoren</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Ghi en waert hier <rhyme label="b" type="m" corresp="#s17:l2">nemmermeer</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Ghi moecht wel in v <rhyme label="a" type="f">herte</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Trueren om v <rhyme label="b" type="m">misdaet</rhyme></l>
        <l id="s18:l3" met="3" type="-+">Mer denct dat mijns kints <rhyme label="a" type="f" corresp="#s18:l1">smerte</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Alle liden te bouen <rhyme label="b" type="m" corresp="#s18:l2">gaet</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Wee hen die dit <rhyme label="a" type="f">vergheten</rhyme></l>
        <l id="s19:l2" met="3" type="-+">Ende op haer verdiensten <rhyme label="b" type="m">staen</rhyme> /</l>
        <l id="s19:l3" met="3" type="-+">Ende daer op hen <rhyme label="a" type="f" corresp="#s19:l1">vermeten</rhyme></l>
        <l id="s19:l4" met="3" type="-+">In mijns kints rijck te <rhyme label="b" type="m" corresp="#s19:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Thien duysent iaer <rhyme label="a" type="f">beneden</rhyme></l>
        <l id="s20:l2" met="3" type="-+">Gheleeft seer <rhyme label="b" type="m">stranghelick</rhyme></l>
        <l id="s20:l3" met="3" type="-+">Heeft hier bouen luttel <rhyme label="a" type="f" corresp="#s20:l1">reden</rhyme></l>
        <l id="s20:l4" met="3" type="-+">Te sijn een <rhyme label="b" type="m" corresp="#s20:l2">ooghenblick</rhyme></l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Een dropel van sinen <rhyme label="a" type="f">bloede</rhyme></l>
        <l id="s21:l2" met="3" type="-+">Is weerdicht doch <rhyme label="b" type="m">alleen</rhyme></l>
        <l id="s21:l3" met="3" type="-+">Te nemen wter <rhyme label="a" type="f" corresp="#s21:l1">armoede</rhyme></l>
        <l id="s21:l4" met="3" type="-+">Alle die werelt <rhyme label="b" type="m" corresp="#s21:l2">ghemeen</rhyme></l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="3" type="-+">Hier om wilt v <rhyme label="a" type="f">verbliden</rhyme></l>
        <l id="s22:l2" met="3" type="-+">Ende hem dienen <rhyme label="b" type="m">trouwelijck</rhyme>.</l>
        <l id="s22:l3" met="3" type="-+">Hi sal in corten <rhyme label="a" type="f" corresp="#s22:l1">tiden</rhyme></l>
        <l id="s22:l4" met="3" type="-+">V halen in sijn <rhyme label="b" type="m" corresp="#s22:l2">rijck</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="3" type="-+">Lof moet v altoos <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s23:l2" met="3" type="-+">O suyver maghet <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s23:l3" met="3" type="-+">Helpt mi o maghet <rhyme label="a" type="f" corresp="#s23:l1">ghepresen</rhyme></l>
        <l id="s23:l4" met="3" type="-+">Bi v te comen <rhyme label="b" type="m" corresp="#s23:l2">daer</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
