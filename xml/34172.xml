  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ick kom u een caresse <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Myn smoddelycke <rhyme label="b" type="f">prye</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy zyt seer aerdigh van <rhyme label="a" type="m" corresp="#s1:l1">faitsoen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">'kEn kan gheen ander <rhyme label="b" type="f" corresp="#s1:l2">vryen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mulphus ghy staet my oock <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Want ghy zyt een hups <rhyme label="b" type="f">Kerrel</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'tSou ons voeghen 'tsaem te <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Soo nettens als een <rhyme label="b" type="f" corresp="#s2:l2">perrel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Labbekack 'kheb u soo <rhyme label="a" type="m">lief</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat sweir ick by myn <rhyme label="b" type="f">solen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Myn hert hebt ghy als eenen <rhyme label="a" type="m" corresp="#s3:l1">dief</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Uyt mynen derm <rhyme label="b" type="f" corresp="#s3:l2">ghestolen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En ghy myn soete <rhyme label="a" type="m">Waefel-kin</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ick min u by myn <rhyme label="b" type="f">slippen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">My dunckt ick in den hemel <rhyme label="a" type="m" corresp="#s4:l1">bin</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als ghy my raeckt de <rhyme label="b" type="f" corresp="#s4:l2">lippen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ach! Labbekack, laet ons dan <rhyme label="a" type="m">'tsaem</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Toch trouwen met <rhyme label="b" type="f">believen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Want 'kvrees, ofter een ander <rhyme label="a" type="m" corresp="#s5:l1">quaem</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die u my moght <rhyme label="b" type="f" corresp="#s5:l2">ont-rieven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Al quamper Hol-derm, en <rhyme label="a" type="m">Paesschier</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En Steven met syn <rhyme label="b" type="f">ooren</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ghy sullet zyn: 'tis niet een <rhyme label="a" type="m" corresp="#s6:l1">sier</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">'kEn sal naer hun niet <rhyme label="b" type="f" corresp="#s6:l2">hooren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hersa! dan soetste <rhyme label="a" type="m">Labbekack</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Daer is myn handt op <rhyme label="b" type="f">trouwe</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">U leven sult ghy met <rhyme label="a" type="m" corresp="#s7:l1">ghemack</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Zyn Mulphus liefste <rhyme label="b" type="f" corresp="#s7:l2">Vrouwe</rhyme>.</l>
      </lg>
    </lg>
  </text>
