  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">In liden ende in <rhyme label="a" type="f">striden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">In menich swaer <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hevet mi die Heer <rhyme label="c" type="f">ghelaten</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Mijn sinnen willen my <rhyme label="c" type="f" corresp="#s1:l3">ontsaten</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ic en cans ghedraghen <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Hevet mi die Heer <rhyme label="c" type="f" corresp="#s1:l3">ghelaten</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Mijn sinnen willen my <rhyme label="c" type="f" corresp="#s1:l3">ontsaten</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ic en cans ghedraghen <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ic draech in mijnre <rhyme label="a" type="f">harten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Soe overgrote <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Het cost my alle mijn <rhyme label="c" type="f">crachten</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Ten can my niet <rhyme label="c" type="f" corresp="#s2:l3">ghesachten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Eer ic ontbonden <rhyme label="b" type="m" corresp="#s2:l2">bin</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Het cost my alle mijn <rhyme label="c" type="f" corresp="#s2:l3">crachten</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Ten can my niet <rhyme label="c" type="f" corresp="#s2:l3">ghesachten</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Eer ic ontbonden <rhyme label="b" type="m" corresp="#s2:l2">bin</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Waerom wil ic dus <rhyme label="a" type="f">trueren</rhyme>?</l>
        <l id="s3:l2" met="3" type="-+">Tmoet al gheleden <rhyme label="b" type="m">sijn</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">In soeten ende oec in <rhyme label="c" type="f">sueren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Sijn even lanc die <rhyme label="c" type="f" corresp="#s3:l3">uren</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Laet ons verduldich <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">In soeten ende oec in <rhyme label="c" type="f" corresp="#s3:l3">sueren</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sijn even lanc die <rhyme label="c" type="f" corresp="#s3:l3">uren</rhyme>.</l>
        <l id="s3:l8" met="3" type="-+">Laet ons verduldich <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Alle dinc coemt ten <rhyme label="a" type="f">eynde</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sonder die Liefste <rhyme label="b" type="m">mijn</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Hi sel ewich <rhyme label="c" type="f">blijven</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Men mach niet al <rhyme label="c" type="f" corresp="#s4:l3">bescriven</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat Hy bedrijft in <rhyme label="b" type="m" corresp="#s4:l2">my</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Hi sel ewich <rhyme label="c" type="f" corresp="#s4:l3">blijven</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Men mach niet al <rhyme label="c" type="f" corresp="#s4:l3">bescriven</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dat Hy bedrijft in <rhyme label="b" type="m" corresp="#s4:l2">my</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als nu, soe is my <rhyme label="a" type="f">wee</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Als nu, so is my <rhyme label="b" type="m">wel</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Maer als die tijt sel <rhyme label="c" type="f">comen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat my alle dinc sel <rhyme label="c" type="f" corresp="#s5:l3">vromen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Soe ist een ander <rhyme label="b" type="m" corresp="#s5:l2">spel</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Maer als die tijt sel <rhyme label="c" type="f" corresp="#s5:l3">comen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dat my alle dinc sel <rhyme label="c" type="f" corresp="#s5:l3">vromen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Soe ist een ander <rhyme label="b" type="m" corresp="#s5:l2">spel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">God gheve van Sijnre <rhyme label="a" type="f">goeden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat so ghescie in <rhyme label="b" type="m">my</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">So worttet al <rhyme label="c" type="f">vergouden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat ic gaern werken <rhyme label="c" type="f" corresp="#s6:l3">soude</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Tonbliven is in <rhyme label="b" type="m" corresp="#s6:l2">my</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">So worttet al <rhyme label="c" type="f" corresp="#s6:l3">vergouden</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dat ic gaern werken <rhyme label="c" type="f" corresp="#s6:l3">soude</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Tonbliven is in <rhyme label="b" type="m" corresp="#s6:l2">my</rhyme>.</l>
      </lg>
    </lg>
  </text>
