    <melody>Mijn tijd gaat weg en ik daar mee</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Mijn tijt gaet wecht / en ic daer <rhyme label="a" type="m">met</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mijn leuen en mach niet <rhyme label="b" type="f">deruen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ick wil mi keeren <rhyme label="a" type="m" corresp="#s1:l1">onbelet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ick wil mi keren <rhyme label="a" type="m" corresp="#s1:l1">onbelet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van alle <rhyme label="b" type="f" corresp="#s1:l2">creaturen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ende allen dingen ledich <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat mi van God mach <rhyme label="b" type="f">keeren</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Mijns selfs altijt te buten <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Mijns selfs altijt te buten <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Aldoer die minne ons <rhyme label="b" type="f" corresp="#s2:l2">heeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het herte mach wel vrolic <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ten derf hem niet <rhyme label="b" type="f">versaghen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Al is hem liden somtijts <rhyme label="a" type="m" corresp="#s3:l1">pijn</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Al is hem liden somtijts <rhyme label="a" type="m" corresp="#s3:l1">pijn</rhyme></l>
        <l id="s3:l5" met="3" type="-+">God salt hem helpen <rhyme label="b" type="f" corresp="#s3:l2">draghen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nu laet ons dan een cort <rhyme label="a" type="m">termijn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Doer Gode gaerne <rhyme label="b" type="f">liden</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Want ten sal toch niet langhe <rhyme label="a" type="m" corresp="#s4:l1">sijn</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Want ten sal toch niet langhe <rhyme label="a" type="m" corresp="#s4:l1">sijn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Wi mogen wel hoeslijc <rhyme label="b" type="f" corresp="#s4:l2">striden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nature die moet in alder <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Haer seluen leeren <rhyme label="b" type="f">bedwingen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Want het is die groot <rhyme label="a" type="m" corresp="#s5:l1">onprofijt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Want het is die groot <rhyme label="a" type="m" corresp="#s5:l1">onprofijt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Te cleuen aen aertsche <rhyme label="b" type="f" corresp="#s5:l2">dingen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Al schinet wat ten is so <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Men wort daer bi <rhyme label="b" type="f">bedroghen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Alsmen daer af scheyt so eest al <rhyme label="a" type="m" corresp="#s6:l1">verdriet</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Alsmen daer af scheyt so eest al <rhyme label="a" type="m" corresp="#s6:l1">verdriet</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Het is dagelijcx voer <rhyme label="b" type="f" corresp="#s6:l2">oghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">So wie sijn sinnen aen Gode <rhyme label="a" type="m">keert</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die en derf voortaen niet <rhyme label="b" type="f">trueren</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Al wort natuere dicke <rhyme label="a" type="m" corresp="#s7:l1">beswaert</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Al wort natuere dicke <rhyme label="a" type="m" corresp="#s7:l1">beswaert</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Hem sal wel troost <rhyme label="b" type="f" corresp="#s7:l2">ghebueren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Van haerder minnen die si <rhyme label="a" type="m">draecht</rhyme></l>
        <l id="s8:l2" met="3" type="-+">In haren gront <rhyme label="b" type="f">verborghen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Op dat sijt haren minnaer <rhyme label="a" type="m" corresp="#s8:l1">claecht</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Op dat sijt haren minnaer <rhyme label="a" type="m" corresp="#s8:l1">claecht</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Si en derf voer gheen dinc <rhyme label="b" type="f" corresp="#s8:l2">sorghen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Die gracie ons heren die is ons <rhyme label="a" type="m">bi</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Bidt dat hy ons <rhyme label="b" type="f">verlichte</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Ende van alle sorghen make <rhyme label="a" type="m" corresp="#s9:l1">vry</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Ende van alle sorghen make <rhyme label="a" type="m" corresp="#s9:l1">vry</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Ende ooc die dit liedeken <rhyme label="b" type="f" corresp="#s9:l2">dichte</rhyme>.</l>
      </lg>
    </lg>
  </text>
