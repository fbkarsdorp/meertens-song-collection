    <melody>Psalm 028 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O HEER myn roem end eer' <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wilt doch voort aen niet stille <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Die boos' openen haere <rhyme label="b" type="f">monden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Teghen my, end t'saemen <rhyme label="b" type="f" corresp="#s1:l3">verkonden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Valschheit end veel lueghenen <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Met tonghen ęrg end <rhyme label="c" type="m" corresp="#s1:l5">obstinaet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sonder oorsaeck' sy steedts quaet <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Met haet fel sy hen aen my <rhyme label="a" type="f" corresp="#s2:l1">wreken</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Voor liefde die ick t'allen <rhyme label="b" type="f">tyden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hen doe, seer hart sy my <rhyme label="b" type="f" corresp="#s2:l3">bestryden</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Maer in myn teghenheit niet <rhyme label="c" type="m">kleyn</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Is't ghebedt myn toevlucht <rhyme label="c" type="m" corresp="#s2:l5">alleyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Voor t'goede, quaet sy my <rhyme label="a" type="f">bewysen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">End voor liefde haer met <rhyme label="a" type="f" corresp="#s3:l1">afgrysen</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Dies wilts' O Heer met angst end <rhyme label="b" type="f">beuen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Den godtloosen wreedt <rhyme label="b" type="f" corresp="#s3:l3">ouergheuen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat hem stae aen die rechte <rhyme label="c" type="m">handt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Tot sijn verderf sijne <rhyme label="c" type="m" corresp="#s3:l5">viandt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als hy voor dat recht sal <rhyme label="a" type="f">verschynen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Laet hem veroordeelt sijn met <rhyme label="a" type="f" corresp="#s4:l1">pynen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Laet sijn ghebeden hem <rhyme label="b" type="f">verkeeren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Tot sond' end tot sijner <rhyme label="b" type="f" corresp="#s4:l3">oneeren</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Laet sijn daeghen haestlick <rhyme label="c" type="m">vergaen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">End andere sijn ampt <rhyme label="c" type="m" corresp="#s4:l5">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Laet oock sijn kindren weesen <rhyme label="a" type="f">werden</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">End sijn wyf een weduw' op <rhyme label="a" type="f" corresp="#s5:l1">ęerden</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Laet se dwaelen end beyde <rhyme label="b" type="f">t'saemen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Broot bedelen, wilt se <rhyme label="b" type="f" corresp="#s5:l3">beschaemen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Verderft se gaer, maeckt se <rhyme label="c" type="m">beroyt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Laets' wtlandisch sijn end <rhyme label="c" type="m" corresp="#s5:l5">verstroyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Laet die woeckeraers gantsch <rhyme label="a" type="f">wtsuypen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Sijn goet: End dat hem <rhyme label="a" type="f" corresp="#s6:l1">onderkruypen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Die vremde, jae roouen <rhyme label="b" type="f">ghestaedigh</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Dat hem niemant en sij <rhyme label="b" type="f" corresp="#s6:l3">ghenaedigh</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Noch oock hem ontferm' in't <rhyme label="c" type="m">ghemeyn</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Ouer syn aermen weesen <rhyme label="c" type="m" corresp="#s6:l5">kleyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dat syn naekommers haest <rhyme label="a" type="f">versmachten</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">End vergaen in't tweede <rhyme label="a" type="f" corresp="#s7:l1">gheslachte</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Syn huys sy te gronde <rhyme label="b" type="f">ghesmeten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dat nemmermeer werde <rhyme label="b" type="f" corresp="#s7:l3">vergheten</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Syner vaederen sonden <rhyme label="c" type="m">swaer</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Die sy ghedaen hebben <rhyme label="c" type="m" corresp="#s7:l5">eenpaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wilt Heer oock syner moeder <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ghedachtigh sijn tot allen <rhyme label="a" type="f" corresp="#s8:l1">stonden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Laett die boosheit die sy <rhyme label="b" type="f">bedryuen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">T'eewigher tydt Heer voor v <rhyme label="b" type="f" corresp="#s8:l3">blyuen</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Laett haer ghedachtenisse <rhyme label="c" type="m">saen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Van der ęerden gantschlick <rhyme label="c" type="m" corresp="#s8:l5">vergaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Om dat hy noyt en hadd' <rhyme label="a" type="f">ontfaermen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Ouer den bedruckten end <rhyme label="a" type="f" corresp="#s9:l1">aermen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Maer vervolghde hen die daer <rhyme label="b" type="f">saeten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Met elendt benauwt bouen <rhyme label="b" type="f" corresp="#s9:l3">maeten</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Die beswaerde met angst end <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Vervolghde hy wreedt tot der <rhyme label="c" type="m" corresp="#s9:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hy heeft den vloeck ghewenscht <rhyme label="a" type="f">alommen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Laett dien nu Heer ouer hem <rhyme label="a" type="f" corresp="#s10:l1">kommen</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">Hy beghęerde noyt gheenen <rhyme label="b" type="f">seghen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Dies gheeft hem dien in gheenen <rhyme label="b" type="f" corresp="#s10:l3">weghen</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Laett hem met ongheluck end <rhyme label="c" type="m">leedt</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Als met eenen rock sijn <rhyme label="c" type="m" corresp="#s10:l5">ghekleedt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ghelyck men t'water pleeght te <rhyme label="a" type="f">drincken</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Wilt hem also den vloeck <rhyme label="a" type="f" corresp="#s11:l1">inschincken</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">So d'oly die beenen <rhyme label="b" type="f">doerdringhet</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Laett hem oock so wesen <rhyme label="b" type="f" corresp="#s11:l3">omringhet</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">End' alsmet een rieme seer <rhyme label="c" type="m">snel</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Omghegort sijn met vloecken <rhyme label="c" type="m" corresp="#s11:l5">fel</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Dit sij den loon in allen <rhyme label="a" type="f">landen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Myner moetwilligher <rhyme label="a" type="f" corresp="#s12:l1">vianden</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Laett sulcks die quaed' tonghen <rhyme label="b" type="f">beeruen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Die met list soecken mijn <rhyme label="b" type="f" corresp="#s12:l3">verderuen</rhyme>.</l>
        <l id="s12:l5" met="4" type="-+">Maer ghy O Heer' in desen <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Helpt my om uws naems wille <rhyme label="c" type="m" corresp="#s12:l5">groot</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Heer myn troost staet op v' <rhyme label="a" type="f">ghenaede</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Verlost my nu staet my in <rhyme label="a" type="f" corresp="#s13:l1">staede</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">Want ick ben elendigh vol <rhyme label="b" type="f">plaeghen</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Myn hert' in my is gantsch <rhyme label="b" type="f" corresp="#s13:l3">verslaeghen</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Ick vaere wegh in desen <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Ghelyck een schaduwe <rhyme label="c" type="m" corresp="#s13:l5">vergaet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Dickwyl ben ick verjaeght met <rhyme label="a" type="f">traenen</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">So men in't veldt jaeght die <rhyme label="a" type="f" corresp="#s14:l1">springhhaenen</rhyme>.</l>
        <l id="s14:l3" met="4" type="-+">Myn knien sijn swack end sonder <rhyme label="b" type="f">krachten</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Van vasten daeghen langh end <rhyme label="b" type="f" corresp="#s14:l3">nachten</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Myn vleesch is maegher, want gaer <rhyme label="c" type="m">net</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Is verteert al myns lichaems <rhyme label="c" type="m" corresp="#s14:l5">vett'</rhyme>,</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Noch moet ick Heer' aen alle <rhyme label="a" type="f">zyden</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Duysent spotrednen van hen <rhyme label="a" type="f" corresp="#s15:l1">lyden</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Als sy my sien die boose <rhyme label="b" type="f">kudden</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">T'hooft ouer my t'saemen <rhyme label="b" type="f" corresp="#s15:l3">schudden</rhyme>.</l>
        <l id="s15:l5" met="4" type="-+">Maer ghy myn Koningh end myn <rhyme label="c" type="m">Heer'</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">Helpt my ghenaedelick nu <rhyme label="c" type="m" corresp="#s15:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Op dat se Heer moghen <rhyme label="a" type="f">bemercken</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Dat dit sijn uwer handen <rhyme label="a" type="f" corresp="#s16:l1">wercken</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">End dat sy sulcks moghen <rhyme label="b" type="f">belyden</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Dat ghy my wilt end kondt <rhyme label="b" type="f" corresp="#s16:l3">bevryden</rhyme>.</l>
        <l id="s16:l5" met="4" type="-+">Se sullen my vloecken vol <rhyme label="c" type="m">spydt</rhyme>,</l>
        <l id="s16:l6" met="4" type="-+">Maer ghy sult seghenen <rhyme label="c" type="m" corresp="#s16:l5">altydt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Is't dat se hen teghen my <rhyme label="a" type="f">stellen</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Ghy sult se met smaet neder <rhyme label="a" type="f" corresp="#s17:l1">vellen</rhyme>:</l>
        <l id="s17:l3" met="4" type="-+">End sult my met blydtschap <rhyme label="b" type="f">verhooghen</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Daer se sullen sijn <rhyme label="b" type="f" corresp="#s17:l3">aenghetoghen</rhyme></l>
        <l id="s17:l5" met="4" type="-+">Met smaet: want haer kleedt wesen <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s17:l6" met="4" type="-+">Schandt ende groot' oneer' <rhyme label="c" type="m" corresp="#s17:l5">oueral</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Ick wil Godt met myn ghesang <rhyme label="a" type="f">prysen</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">In den Ghemeynten sal <rhyme label="a" type="f" corresp="#s18:l1">oprysen</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Sijn roem, want hy heeft <rhyme label="b" type="f">byghestanden</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Den aermen, dien hy laett wt <rhyme label="b" type="f" corresp="#s18:l3">handen</rhyme></l>
        <l id="s18:l5" met="4" type="-+">Der boosen, so dat ledigh <rhyme label="c" type="m">komt</rhyme></l>
        <l id="s18:l6" met="4" type="-+">Hy die t'onrechte was <rhyme label="c" type="m" corresp="#s18:l5">verdomt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
