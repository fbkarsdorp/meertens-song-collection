    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHy Memelijckers met <rhyme label="a" type="f">namen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Broeders, Susters <rhyme label="b" type="m">playsant</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">V Brief end' 'tLietjen <rhyme label="a" type="f" corresp="#s1:l1">quamen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Op Tessel ons ter <rhyme label="b" type="m" corresp="#s1:l2">handt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Waer door ons liefd' soo <rhyme label="b" type="m" corresp="#s1:l2">brandt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat wy u seynden <rhyme label="c" type="f">weeren</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Een Liedt, na u <rhyme label="c" type="f" corresp="#s1:l6">begheeren</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Al is kleyn ons <rhyme label="b" type="m" corresp="#s1:l2">verstandt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wt liefden wy u <rhyme label="a" type="f">schencken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Nu weer een kleyn <rhyme label="b" type="m">vermaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat gy altijdt wilt <rhyme label="a" type="f" corresp="#s2:l1">dencken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Op den dagh, die haest komt <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Als Godt oordeelen sal <rhyme label="b" type="m" corresp="#s2:l2">gaen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">End' de sentency <rhyme label="c" type="f">sluyten</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Gaet van my, blijft daer <rhyme label="c" type="f" corresp="#s2:l6">buyten</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Al die quaedt heeft <rhyme label="b" type="m" corresp="#s2:l2">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Desen dagh, wiltet <rhyme label="a" type="f">ghelooven</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">(Soo Malachias <rhyme label="b" type="m">schrijft</rhyme>)</l>
        <l id="s3:l3" met="3" type="-+">Sal branden als een <rhyme label="a" type="f" corresp="#s3:l1">oven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wie quaedt end' onrecht <rhyme label="b" type="m" corresp="#s3:l2">stijft</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Oft Goddeloosheyt <rhyme label="b" type="m" corresp="#s3:l2">bedrijft</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Worden by stroo <rhyme label="c" type="f">gheleecken</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dien dagh salse <rhyme label="c" type="f" corresp="#s3:l6">aensteecken</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Datter niet over en <rhyme label="b" type="m" corresp="#s3:l2">blijft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt dit gedachtigh <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Waer dat ghy gaet by <rhyme label="b" type="m">straet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En denckt oock dat wy <rhyme label="a" type="f" corresp="#s4:l1">lesen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wie niet af staet van 't <rhyme label="b" type="m" corresp="#s4:l2">quaedt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Sal roepen om <rhyme label="b" type="m" corresp="#s4:l2">genaed'</rhyme></l>
        <l id="s4:l6" met="3" type="-+">In 't vyer, dat eeuwigh sal <rhyme label="c" type="f">branden</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Met knersinge der <rhyme label="c" type="f" corresp="#s4:l6">tanden</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Maer 'tsal dan zijn te <rhyme label="b" type="m" corresp="#s4:l2">laet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Vrienden 'tsal dus <rhyme label="a" type="f">gebeuren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dus siet hoe dat ghy 't <rhyme label="b" type="m">maeckt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat ghy tot ghener <rhyme label="a" type="f" corresp="#s5:l1">uren</rhyme></l>
        <l id="s5:l4" met="3" type="-+">De eeuwighe pijne <rhyme label="b" type="m" corresp="#s5:l2">smaeckt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dus bidt doch ende <rhyme label="b" type="m" corresp="#s5:l2">waeckt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Wilt u altijdt <rhyme label="c" type="f">vercieren</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Met deucht end' goe <rhyme label="c" type="f" corresp="#s5:l6">manieren</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Want desen dagh <rhyme label="b" type="m" corresp="#s5:l2">genaeckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Desen dagh sal <rhyme label="a" type="f">aenkomen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Als men daer minst op <rhyme label="b" type="m">acht</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dus stelt u, als den <rhyme label="a" type="f" corresp="#s6:l1">vromen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Teghen des Duyvels <rhyme label="b" type="m" corresp="#s6:l2">macht</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Vrymoedigh op de <rhyme label="b" type="m" corresp="#s6:l2">wacht</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">End' wilt u lampen <rhyme label="c" type="f">bereyden</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">V Bruydegom <rhyme label="c" type="f" corresp="#s6:l6">verbeyden</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">By daegh end' oock by <rhyme label="b" type="m" corresp="#s6:l2">nacht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Al die wacht met <rhyme label="a" type="f">verlangen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Nae dees Bruydegom <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Sullen de stem <rhyme label="a" type="f" corresp="#s7:l1">ontfangen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ghy uytverkoren <rhyme label="b" type="m" corresp="#s7:l2">goet</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Komt haest'lijck met der <rhyme label="b" type="m" corresp="#s7:l2">spoet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">V Bruydegom sal <rhyme label="c" type="f">verklaren</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">In de wolcken <rhyme label="c" type="f" corresp="#s7:l6">openbaren</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Treckt hem nu te <rhyme label="b" type="m" corresp="#s7:l2">gemoet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dan sullen mede <rhyme label="a" type="f">trecken</rhyme></l>
        <l id="s8:l2" met="3" type="-+">De dwasen, na Schrifts <rhyme label="b" type="m">bediet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die haer boosheydt <rhyme label="a" type="f" corresp="#s8:l1">bedecken</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">End' gheern een Christen <rhyme label="b" type="m" corresp="#s8:l2">hiet</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Maer Godt, die 't al <rhyme label="b" type="m" corresp="#s8:l2">doorsiet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Sal haer te antwoort <rhyme label="c" type="f">gheven</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Ghy hebt boosheydt <rhyme label="c" type="f" corresp="#s8:l6">bedreven</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Gaet wegh ick ken u <rhyme label="b" type="m" corresp="#s8:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dan sullen sy <rhyme label="a" type="f">versuchten</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Dat Goddeloose <rhyme label="b" type="m">getal</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">End' weten niet waer <rhyme label="a" type="f" corresp="#s9:l1">vluchten</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Daerom sullen sy <rhyme label="b" type="m" corresp="#s9:l2">al</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Roepen met groot <rhyme label="b" type="m" corresp="#s9:l2">gheschal</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Berghen wilt ons <rhyme label="c" type="f">bedecken</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">De Rechter komt hier <rhyme label="c" type="f" corresp="#s9:l6">trecken</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Die ons verdoemen <rhyme label="b" type="m" corresp="#s9:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dan sullen <rhyme label="a" type="f">d'uytverkoren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Van vreuchden end' <rhyme label="b" type="m">jolijt</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Haer stem oock laten <rhyme label="a" type="f" corresp="#s10:l1">hooren</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Nu moghen wy zijn <rhyme label="b" type="m" corresp="#s10:l2">verblijdt</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Wy hebben na desen <rhyme label="b" type="m" corresp="#s10:l2">tijdt</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Gehadt soo groot <rhyme label="c" type="f">verlangen</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Nu sullen wy <rhyme label="c" type="f" corresp="#s10:l6">ontfangen</rhyme></l>
        <l id="s10:l8" met="3" type="-+">De kroon <rhyme label="b" type="m" corresp="#s10:l2">gebenedijt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Vrienden, neemt doch ter <rhyme label="a" type="f">herten</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Dit groote <rhyme label="b" type="m">onderscheyt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Als d'een met pijn end' <rhyme label="a" type="f" corresp="#s11:l1">smerten</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Eeuwigh huylt ende <rhyme label="b" type="m" corresp="#s11:l2">schreyt</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Als dan Godes volck <rhyme label="b" type="m" corresp="#s11:l2">seyt</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Wy hebben den strijdt <rhyme label="c" type="f">gestreden</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Ons gheloove vroom <rhyme label="c" type="f" corresp="#s11:l6">beleden</rhyme></l>
        <l id="s11:l8" met="3" type="-+">De Kroon' is ons <rhyme label="b" type="m" corresp="#s11:l2">bereydt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Oorlof, dit's 't <rhyme label="a" type="f">concluderen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">End' ons Liedts <rhyme label="b" type="m">fondament</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Peynst in al u <rhyme label="a" type="f" corresp="#s12:l1">hanteren</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Op dees vreught end' <rhyme label="b" type="m" corresp="#s12:l2">ellendt</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Dus denckt altijdt om 't <rhyme label="b" type="m" corresp="#s12:l2">endt</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Ghy sult (na Schrifts <rhyme label="c" type="f">bedieden</rhyme>)</l>
        <l id="s12:l7" met="3" type="-+">De sonden dan wel <rhyme label="c" type="f" corresp="#s12:l6">vlieden</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Als een Slangh' of <rhyme label="b" type="m" corresp="#s12:l2">Serpent</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Oorlof vrienden, in't <rhyme label="a" type="f">lesten</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Soo bidden wy u <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Houdt ons dit Liedt ten <rhyme label="a" type="f" corresp="#s13:l1">besten</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">End' seyndt ons een Liedt <rhyme label="b" type="m" corresp="#s13:l2">weer</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Dit is noch ons <rhyme label="b" type="m" corresp="#s13:l2">begheer</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Bedenckt u swacke <rhyme label="c" type="f">leden</rhyme></l>
        <l id="s13:l7" met="3" type="-+">Oock in uwe <rhyme label="c" type="f" corresp="#s13:l6">ghebeden</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Ick beveel u den <rhyme label="b" type="m" corresp="#s13:l2">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
