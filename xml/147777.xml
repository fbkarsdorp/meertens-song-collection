    <melody>O kerstnacht schoner dan de dagen</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEt hoogst volmaakt, nootzaak'lyk <rhyme label="a" type="f">Wezen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dat nooit na waarde wort <rhyme label="a" type="f" corresp="#s1:l1">volprezen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">d'Hoogweerdige <rhyme label="b" type="m">Dryenigheit</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Heeft van all' euwigheit <rhyme label="c" type="f">besloten</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Zyn roem en luister te <rhyme label="c" type="f" corresp="#s1:l4">vergroten</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Als zynd' een God van <rhyme label="b" type="m" corresp="#s1:l3">zaligheit</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het was des Godheits wil aan <rhyme label="a" type="f">velen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Der zondaars zig zelfs me te <rhyme label="a" type="f" corresp="#s2:l1">delen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En die te doen in 't glanszig <rhyme label="b" type="m">ligt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Van zyn volmaakte aanschyn <rhyme label="c" type="f">wand'len</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Maar niet met haar in strafheit <rhyme label="c" type="f" corresp="#s2:l4">t'hand'len</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Of na der zonden zwaar <rhyme label="b" type="m" corresp="#s2:l3">gewigt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maar wyl den zondaar van zyn <rhyme label="a" type="f">kragten</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Berooft, geen zaligheit kon <rhyme label="a" type="f" corresp="#s3:l1">wagten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Of God moest zyn <rhyme label="b" type="m">regtveerdigheit</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Ten laasten penning toe voldaan <rhyme label="c" type="f">zyn</rhyme>;</l>
        <l id="s3:l5" met="4" type="-+">Hy kan geen quaat onschuldig <rhyme label="c" type="f" corresp="#s3:l4">aanzien</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Waar tegen wet en reden <rhyme label="b" type="m" corresp="#s3:l3">pleit</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dus sprak Jehovah tot zyn <rhyme label="a" type="f">Zone</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">Myn Zoon, myn Heerlykheit, myn <rhyme label="a" type="f" corresp="#s4:l1">krone</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Afschynsel van myn euwig <rhyme label="b" type="m">ligt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ik draag u op een <rhyme label="c" type="f">Koningryke</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Dat in geen'euwen zal <rhyme label="c" type="f" corresp="#s4:l4">bezwyke</rhyme>;</l>
        <l id="s4:l6" met="4" type="-+">Verzoen gy slegs myn <rhyme label="b" type="m" corresp="#s4:l3">aangezigt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ik wil door regt geheiligt <rhyme label="a" type="f">wezen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En myn regtveerdigheit doen <rhyme label="a" type="f" corresp="#s5:l1">vrezen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En doen by yegelyk <rhyme label="b" type="m">ontzien</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Stel gy u zelven tusschen <rhyme label="c" type="f">beiden</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Om voor het onregt straf te <rhyme label="c" type="f" corresp="#s5:l4">lyden</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Zo zult gy zaat in menigt <rhyme label="b" type="m" corresp="#s5:l3">zien</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Verbint u om eens neer te <rhyme label="a" type="f">treden</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Omkleet met menschelyke <rhyme label="a" type="f" corresp="#s6:l1">leden</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Tot het vervullen van de <rhyme label="b" type="m">wet</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Om aan 't vervloekte hout te <rhyme label="c" type="f">sterven</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Om tot u eigendom te <rhyme label="c" type="f" corresp="#s6:l4">erven</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Die waren in de doot <rhyme label="b" type="m" corresp="#s6:l3">gezet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dat Koningryk zult gy <rhyme label="a" type="f">bestieren</rhyme></l>
        <l id="s7:l2" met="4" type="-+">En euwig doen u Godheit <rhyme label="a" type="f" corresp="#s7:l1">vieren</rhyme></l>
        <l id="s7:l3" met="4" type="-+">En zwenken na u raat en <rhyme label="b" type="m">wil</rhyme></l>
        <l id="s7:l4" met="4" type="-+">'t Zal van u als Propheet <rhyme label="c" type="f">ontfangen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">U woort, en daar aan blyven <rhyme label="c" type="f" corresp="#s7:l4">hangen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Met u alleen zig houden <rhyme label="b" type="m" corresp="#s7:l3">stil</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gy zult haar uit de beke <rhyme label="a" type="f">drenken</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Van u verdienst, en euwig <rhyme label="a" type="f" corresp="#s8:l1">schenken</rhyme></l>
        <l id="s8:l3" met="4" type="-+">'t Genot van onze <rhyme label="b" type="m">heerlykheit</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Dan zullen we door vreugde <rhyme label="c" type="f">zangen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Van haar gedurig roem <rhyme label="c" type="f" corresp="#s8:l4">ontfangen</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Voor die verkrege <rhyme label="b" type="m" corresp="#s8:l3">zaligheit</rhyme>.</l>
      </lg>
    </lg>
  </text>
