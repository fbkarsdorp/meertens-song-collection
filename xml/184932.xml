<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184932</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Lofzang van Maria</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEer Iesus, ghy <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mijn heyl, en anders <rhyme label="a" type="m" corresp="#s1:l1">geen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Fonteyne vol <rhyme label="b" type="f">genaden</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Die altoos water <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En nochtans volheydt <rhyme label="c" type="m" corresp="#s1:l4">heeft</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Om yder te <rhyme label="b" type="f" corresp="#s1:l3">versaden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die geeft <rhyme label="a" type="m">gedueriglijck</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En blijft noch even <rhyme label="a" type="m" corresp="#s2:l1">rijck</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Die, schoon ghy in het <rhyme label="b" type="f">duyster</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Altijdt u licht <rhyme label="c" type="m">verspreyd'</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Nochtans u <rhyme label="c" type="m" corresp="#s2:l4">klaerigheydt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Verliest noyt van sijn <rhyme label="b" type="f" corresp="#s2:l3">luyster</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mijn Ziel van alles <rhyme label="a" type="m">schu</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Verlanght en dorst na <rhyme label="a" type="m" corresp="#s3:l1">u</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">'k Leef hier als <rhyme label="b" type="f">onbekende</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In ballinghschap en <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En mijne dagen <rhyme label="c" type="m" corresp="#s3:l4">zijn</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Vol droefheydt en <rhyme label="b" type="f" corresp="#s3:l3">ellende</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer, Heer, mijn <rhyme label="a" type="m">borger-recht</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Is by u wegh <rhyme label="a" type="m" corresp="#s4:l1">geleght</rhyme></l>
        <l id="s4:l3" met="3" type="-+">In d'Hemelen om <rhyme label="b" type="f">hooge</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Het landt der <rhyme label="c" type="m">levenden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Daer ghy u <rhyme label="c" type="m" corresp="#s4:l4">broederen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Voor heen zijt in <rhyme label="b" type="f" corresp="#s4:l3">getogen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ach! wanneer komt die <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat ick u volgen <rhyme label="a" type="m" corresp="#s5:l1">magh</rhyme>?</l>
        <l id="s5:l3" met="3" type="-+">Wanneer sult ghy my <rhyme label="b" type="f">toonen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die plaetse in u <rhyme label="c" type="m">rijk</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Die ghy my <rhyme label="c" type="m" corresp="#s5:l4">eeuwighlijck</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Bereydt hebt te <rhyme label="b" type="f" corresp="#s5:l3">bewonen</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wanneer of my <rhyme label="a" type="m">om-vat</rhyme></l>
        <l id="s6:l2" met="3" type="-+">'t Licht van u heyl'ge <rhyme label="a" type="m" corresp="#s6:l1">stadt</rhyme>?</l>
        <l id="s6:l3" met="3" type="-+">Die Hemels-son, mijn <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Daer aerdtsche Son en <rhyme label="c" type="m">Maen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Niet sullen d'eer <rhyme label="c" type="m" corresp="#s6:l4">ontfaen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Haer schijnsel in te <rhyme label="b" type="f" corresp="#s6:l3">geven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Daer God (die s'heeft <rhyme label="a" type="m">gesticht</rhyme>)</l>
        <l id="s7:l2" met="3" type="-+">Haer klaerheydt en haer <rhyme label="a" type="m" corresp="#s7:l1">licht</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En ghy de kaers sult <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wiens glans verlichten <rhyme label="c" type="m">sal</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Dat Goddelijck <rhyme label="c" type="m" corresp="#s7:l4">getal</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Der gener die u <rhyme label="b" type="f" corresp="#s7:l3">vreesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hoe lang ach Heer! hoe <rhyme label="a" type="m">langh</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Sal ick noch in <rhyme label="a" type="m" corresp="#s8:l1">bedwangh</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Des lichaems omme <rhyme label="b" type="f">swerven</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Hier in het tranen <rhyme label="c" type="m">dal</rhyme>?</l>
        <l id="s8:l5" met="3" type="-+">In 't landt, dat heel en <rhyme label="c" type="m" corresp="#s8:l4">al</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Boos zijnde moet <rhyme label="b" type="f" corresp="#s8:l3">verderven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Laet, aldersoetste <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Mach 't zijn, mijn Ziel niet <rhyme label="a" type="m" corresp="#s9:l1">meer</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Als ballingh zijn <rhyme label="b" type="f">verschoven</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Op d'aerde, maer voerd <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Verlost van <rhyme label="c" type="m" corresp="#s9:l4">slaverny</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">In 't vader-landt daer <rhyme label="b" type="f" corresp="#s9:l3">boven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Daer s' alle druck ten <rhyme label="a" type="m">end</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Als ghy u tot my <rhyme label="a" type="m" corresp="#s10:l1">wend</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Mijn tranen af te <rhyme label="b" type="f">droogen</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Daer ick sal <rhyme label="c" type="m">aengedaen</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Met witte kleed'ren, <rhyme label="c" type="m" corresp="#s10:l4">staen</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Geduerigh voor Gods <rhyme label="b" type="f" corresp="#s10:l3">oogen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Dan wordt in <rhyme label="a" type="m">overvloedt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Door u mijn lust <rhyme label="a" type="m" corresp="#s11:l1">gevoet</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Wanneer ick door de <rhyme label="b" type="f">stralen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Uws aengesichts <rhyme label="c" type="m">verheught</rhyme></l>
        <l id="s11:l5" met="3" type="-+">In eeuwigh sal'ge <rhyme label="c" type="m" corresp="#s11:l4">vreught</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Mijn herte sal op <rhyme label="b" type="f" corresp="#s11:l3">halen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dan sal tot lof van <rhyme label="a" type="m">dy</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Gestadelijck met <rhyme label="a" type="m" corresp="#s12:l1">my</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Der heyl'gen tongh <rhyme label="b" type="f">ontspringen</rhyme>;</l>
        <l id="s12:l4" met="3" type="-+">Dan sal ick voor en <rhyme label="c" type="m">na</rhyme></l>
        <l id="s12:l5" met="3" type="-+">'t Hemels <rhyme label="c" type="m" corresp="#s12:l4">Aleluja</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Met d'Engelen t'samen <rhyme label="b" type="f" corresp="#s12:l3">singen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
