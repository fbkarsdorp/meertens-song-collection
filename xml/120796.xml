  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Waarom zit gy te <rhyme label="a" type="f">schreijen</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Zeg alderliefste <rhyme label="b" type="m">Meid</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Gy moest uw thans <rhyme label="a" type="f" corresp="#s1:l1">verbleijen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat gy gelukkig <rhyme label="b" type="m" corresp="#s1:l2">zyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zou ik gelukkig <rhyme label="a" type="f">wezen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">ô Neen! dat hebt gy <rhyme label="b" type="m">mis</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wat ramp heb ik te <rhyme label="a" type="f" corresp="#s2:l1">vrezen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En wat al <rhyme label="b" type="m" corresp="#s2:l2">ergernis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hae zo! wat mag u <rhyme label="a" type="f">deeren</rhyme>?</l>
        <l id="s3:l2" met="3" type="-+">Is u dan iets <rhyme label="b" type="m">gebeurd</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Kan ik uw rampen <rhyme label="a" type="f" corresp="#s3:l1">weren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Waarom is 't dat gy <rhyme label="b" type="m" corresp="#s3:l2">treurd</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ach neen! myn waarde <rhyme label="a" type="f">Broeder</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Myn ramp is veel te <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hoe stil ik best myn <rhyme label="a" type="f" corresp="#s4:l1">Moeder</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wie helpt myn uit de <rhyme label="b" type="m" corresp="#s4:l2">nood</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maar Sus! gy mist uw <rhyme label="a" type="f">zinnen</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Gy zegt myn niet met <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Kan 'k iets op u <rhyme label="a" type="f" corresp="#s5:l1">verwinnen</rhyme>?</l>
        <l id="s5:l4" met="3" type="-+">Ach! zeg my 't <rhyme label="b" type="m" corresp="#s5:l2">ongeval</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Welaan! 'k zal u doen <rhyme label="a" type="f">hooren</rhyme>;</l>
        <l id="s6:l2" met="3" type="-+">Myn Karel is <rhyme label="b" type="m">gevlucht</rhyme>!...</l>
        <l id="s6:l3" met="3" type="-+">Ik heb hem gantsch <rhyme label="a" type="f" corresp="#s6:l1">verlooren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Daar is 't dat ik om <rhyme label="b" type="m" corresp="#s6:l2">zucht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Uw Minnaar? ... welke <rhyme label="a" type="f">streeken</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">Waarom is dat <rhyme label="b" type="m">geschied</rhyme>?</l>
        <l id="s7:l3" met="3" type="-+">Is zyne min <rhyme label="a" type="f" corresp="#s7:l1">bezweeken</rhyme>!</l>
        <l id="s7:l4" met="3" type="-+">Maar Sus! 'k geloof het <rhyme label="b" type="m" corresp="#s7:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Het is zoo waar wy <rhyme label="a" type="f">leeven</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">Ofschoon gy 't niet <rhyme label="b" type="m">gelooft</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Wie zal my 't <rhyme label="a" type="f" corresp="#s8:l1">wedergeven</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dat hy my heeft <rhyme label="b" type="m" corresp="#s8:l2">ontrooft</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Heeft hy uw iets <rhyme label="a" type="f">ontnomen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Dat onbetamelyk <rhyme label="b" type="m">is</rhyme>?</l>
        <l id="s9:l3" met="3" type="-+">Wat rampen moet gy <rhyme label="a" type="f" corresp="#s9:l1">schroomen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En wat al <rhyme label="b" type="m" corresp="#s9:l2">droeffenis</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">'ô Ja! die <rhyme label="a" type="f">trouwelozen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Is weg;... ô myn wat <rhyme label="b" type="m">spyt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Ik moet van schaamte <rhyme label="a" type="f" corresp="#s10:l1">bloozen</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">Want 'k ben myn Roosje <rhyme label="b" type="m" corresp="#s10:l2">kwyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
