  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe vlucht gy schoone <rhyme label="a" type="m">Son</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Die ik <rhyme label="b" type="m">bemin</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Na die Krystalle <rhyme label="a" type="m" corresp="#s1:l1">bron</rhyme>.</l>
        <l id="s1:l4" met="2" type="-+">En soekt daar <rhyme label="b" type="m" corresp="#s1:l2">in</rhyme></l>
        <l id="s1:l5" met="3" type="-+">De luyster van uw <rhyme label="c" type="f">Schoonheid</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die klaar voor my ten toon <rhyme label="c" type="f" corresp="#s1:l5">leit</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En eenig' oorsaak <rhyme label="d" type="m">is</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Dat ik my selven <rhyme label="d" type="m" corresp="#s1:l7">mis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hoe! spiegelt gy u <rhyme label="a" type="m">daar</rhyme></l>
        <l id="s2:l2" met="2" type="-+">In 't <rhyme label="b" type="m">waaterglas</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En siet, of al uw <rhyme label="a" type="m" corresp="#s2:l1">haar</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Noch cierlijk <rhyme label="b" type="m" corresp="#s2:l2">was</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Ik geef niet om dat <rhyme label="c" type="f">pronkken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Maar om uw <rhyme label="c" type="f" corresp="#s2:l5">minne-lonkken</rhyme>?</l>
        <l id="s2:l7" met="3" type="-+">Ik sie uw kleed niet <rhyme label="d" type="m">an</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Maar wel de vrow daar <rhyme label="d" type="m" corresp="#s2:l7">van</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ik denk om u <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Al wat ik <rhyme label="b" type="m">doe</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In mijn <rhyme label="a" type="m" corresp="#s3:l1">gedienstigheên</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Ben ik nooit <rhyme label="b" type="m" corresp="#s3:l2">moê</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Na u mijn lieven <rhyme label="c" type="f">Engel</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ik dag en nachten <rhyme label="c" type="f" corresp="#s3:l5">hengel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En sie my in <rhyme label="d" type="m">ellend</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Sie 'k u hier niet <rhyme label="d" type="m" corresp="#s3:l7">omtrent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Vertoef dan <rhyme label="a" type="m">Celestyn</rhyme></l>
        <l id="s4:l2" met="2" type="-+">En toon my <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Eer ik door <rhyme label="a" type="m" corresp="#s4:l1">harte-pyn</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Mijn sterf-uur <rhyme label="b" type="m" corresp="#s4:l2">vin</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">So gy my niet doet <rhyme label="c" type="f">leeven</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Met eene kus te <rhyme label="c" type="f" corresp="#s4:l5">geeven</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">So is mijn leeven <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Als droef heid en <rhyme label="d" type="m" corresp="#s4:l7">verdriet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
