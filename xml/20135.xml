  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ADieu o pronk der <rhyme label="a" type="f">Stede</rhyme>!</l>
        <l id="s1:l2" met="5" type="-+">Met al u schoon en cierlijke <rhyme label="b" type="f">Gebouwen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">‘k Wens al de geene <rhyme label="a" type="f" corresp="#s1:l1">Vrede</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Die zig in u, om u Vest <rhyme label="b" type="f" corresp="#s1:l2">onthouwen</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Want yder <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Zig voor u <rhyme label="c" type="m" corresp="#s1:l5">Vroet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En voor u grootheid <rhyme label="d" type="f">buigen</rhyme>:</l>
        <l id="s1:l8" met="2" type="-+">Want vreemde <rhyme label="e" type="f">volken</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Die zullen door haar <rhyme label="e" type="f" corresp="#s1:l8">Tolken</rhyme>,</l>
        <l id="s1:l10" met="2" type="+-">Zulks <rhyme label="d" type="f" corresp="#s1:l7">getuygen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Adieu, ik meen te <rhyme label="a" type="f">scheiden</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Vit dit gewest, en ook van Amstels <rhyme label="b" type="f">stroomen</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Den Hemel wil my <rhyme label="a" type="f" corresp="#s2:l1">leiden</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Tot dat ik ben, daar ik nog hoop te <rhyme label="b" type="f" corresp="#s2:l2">komen</rhyme>;</l>
        <l id="s2:l5" met="2" type="-+">Daar Febus <rhyme label="c" type="m">praalt</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En ’t heetste <rhyme label="c" type="m" corresp="#s2:l5">straalt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Met al zijn glans en <rhyme label="d" type="f">schoonheid</rhyme>;</l>
        <l id="s2:l8" met="2" type="-+">Daar men <rhyme label="e" type="f">Speec’rijen</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En veelderhande <rhyme label="e" type="f" corresp="#s2:l8">Zijen</rhyme></l>
        <l id="s2:l10" met="2" type="+-">V ten toon <rhyme label="d" type="f" corresp="#s2:l7">leyd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Adieu o Brave <rhyme label="a" type="f">Borsten</rhyme>!</l>
        <l id="s3:l2" met="5" type="-+">Wiens zelschap ik wel eertijdts heb <rhyme label="b" type="f">genoten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Waar dat ik staag na <rhyme label="a" type="f" corresp="#s3:l1">dorste</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Dan gingen wy zo ’t zamen henen <rhyme label="b" type="f" corresp="#s3:l2">stoten</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">En waren <rhyme label="c" type="m">braaf</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">O wat <rhyme label="c" type="m" corresp="#s3:l5">gaaf</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Als men in zulken <rhyme label="d" type="f">soetheid</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Mag tijd <rhyme label="e" type="f">spenderen</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Wie zou daar voor <rhyme label="e" type="f" corresp="#s3:l8">begeeren</rhyme></l>
        <l id="s3:l10" met="2" type="+-">Grooter <rhyme label="d" type="f" corresp="#s3:l7">goedheid</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Adieu o <rhyme label="a" type="f">Amstel-Maagden</rhyme>!</l>
        <l id="s4:l2" met="5" type="-+">By wien ik plegt eertijts te <rhyme label="b" type="f">verkeeren</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Zo ick u ooit <rhyme label="a" type="f" corresp="#s4:l1">behaagden</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Zo zingt dit Liet tog eens tot mijnder <rhyme label="b" type="f" corresp="#s4:l2">ere</rhyme>;</l>
        <l id="s4:l5" met="2" type="-+">Want ziet ik <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Dog heel <rhyme label="c" type="m" corresp="#s4:l5">onzoet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Van u, o Meysjes! <rhyme label="d" type="f">scheiden</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">En ‘k wens den <rhyme label="e" type="f">Hemel</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Wil met zijn zoet <rhyme label="e" type="f" corresp="#s4:l8">gewemel</rhyme></l>
        <l id="s4:l10" met="2" type="+-">V <rhyme label="d" type="f" corresp="#s4:l7">geleiden</rhyme>.</l>
      </lg>
    </lg>
  </text>
