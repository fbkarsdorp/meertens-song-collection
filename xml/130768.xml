  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Amaril, mijn lust en <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Zie eens hoe mijn kwijnend <rhyme label="b" type="m">hart</rhyme></l>
        <l id="s1:l3" met="2" type="+-">In sijn <rhyme label="b" type="m" corresp="#s1:l2">smart</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Voor uw wreedheid schijnt te <rhyme label="a" type="f" corresp="#s1:l1">beven</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Daar ik, om uw lief <rhyme label="c" type="m">gelaat</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Al de meisjes hier <rhyme label="c" type="m" corresp="#s1:l5">verlaat</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Soo mijn dienst u kan <rhyme label="a" type="f">bekoren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">En mijn zang - van u <rhyme label="b" type="m">geagt</rhyme> -</l>
        <l id="s2:l3" met="2" type="+-">Dag en <rhyme label="b" type="m" corresp="#s2:l2">nagt</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Streelen mag uw jeugdige <rhyme label="a" type="f" corresp="#s2:l1">ooren</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Soo verjaag ook door uw <rhyme label="c" type="m">min</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Al de meisjes uit mijn <rhyme label="c" type="m" corresp="#s2:l5">zin</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Schoonheid kan my ligt doen <rhyme label="a" type="f">blaken</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Maar mijn hart houd zig met <rhyme label="b" type="m">een</rhyme></l>
        <l id="s3:l3" met="2" type="+-">Ook te <rhyme label="b" type="m" corresp="#s3:l2">vreen</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Wilt gy des mijn wens <rhyme label="a" type="f" corresp="#s3:l1">volmaken</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Houd, door 't heelen van mijn <rhyme label="c" type="m">smert</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Al de Meisjes uit mijn <rhyme label="c" type="m" corresp="#s3:l5">hert</rhyme>.</l>
      </lg>
    </lg>
  </text>
