  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DEn tijt heb ick <rhyme label="a" type="f">verloren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dien ick ter werelt <rhyme label="b" type="m">gaf</rhyme></l>
        <l id="s1:l3" met="3" type="-+">God gheue mi licht van <rhyme label="c" type="f">binnen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat ick mi beteren <rhyme label="b" type="m" corresp="#s1:l2">mach</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hoe ick mi bet <rhyme label="a" type="f">bedencke</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hoe mi meer rouwet den <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Dat ick in eertsche <rhyme label="c" type="f">menschen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Noyt sochte mijn <rhyme label="b" type="m" corresp="#s2:l2">iolyt</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Och aertsche <rhyme label="a" type="f">creaturen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Heb ick gheuonden <rhyme label="b" type="m">loos</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Had ick gaen dienen <rhyme label="c" type="f">Gode</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hi waer mi getrouwe <rhyme label="b" type="m" corresp="#s3:l2">altoos</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O heere wel lieue <rhyme label="a" type="f">heere</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Waer is die druyue <rhyme label="b" type="m">ghelesen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Daer mine sondighe <rhyme label="c" type="f">siele</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Soe saen was in <rhyme label="b" type="m" corresp="#s4:l2">gheweghen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die druyve is <rhyme label="a" type="f">ghewrongen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat sap is wt <rhyme label="b" type="m">ghegaan</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Die bandekens sijn <rhyme label="c" type="f">ontsprongen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die aen dat herte <rhyme label="b" type="m" corresp="#s5:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Och had ick noch te <rhyme label="a" type="f">doene</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Al dat ick heb <rhyme label="b" type="m">ghedaen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">My is alsoe te <rhyme label="c" type="f">moede</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ick en souts niet ane <rhyme label="b" type="m" corresp="#s6:l2">gaen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Waer ic noch alsoe <rhyme label="a" type="f">ionghe</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Als yemant in dit <rhyme label="b" type="m">conuent</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Ick en soude niet meer <rhyme label="c" type="f">beminnen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Beneden dat <rhyme label="b" type="m" corresp="#s7:l2">firmament</rhyme>.</l>
      </lg>
    </lg>
  </text>
