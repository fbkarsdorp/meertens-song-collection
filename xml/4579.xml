  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VEreerdt den <rhyme label="a" type="m">Medicijn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gelijk den Wijzen  <rhyme label="b" type="m">riep</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">By nood van ‘sLichaems <rhyme label="a" type="m" corresp="#s1:l1">pijn</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Want hem den hoogsten <rhyme label="b" type="m" corresp="#s1:l2">schiep</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Hoe moet hy dan <rhyme label="c" type="m">vereerdt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Voorwaer met meerder <rhyme label="d" type="m">reen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Wel werden, die <rhyme label="c" type="m" corresp="#s1:l5">cureerdt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">De zielen van ’t <rhyme label="d" type="m" corresp="#s1:l6">Gemeen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Cureerdt met een <rhyme label="a" type="m">Sijroop</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die hier op’t veinster <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zoodaenig dat de <rhyme label="a" type="m" corresp="#s2:l1">hoop</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Noch noit van <rhyme label="b" type="m" corresp="#s2:l2">Hippocraet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Iet zulks bevatten <rhyme label="c" type="m">kon</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Dat eeuwig dan met <rhyme label="d" type="m">zijn</rhyme></l>
        <l id="s2:l7" met="3" type="-+">
          <rhyme label="c" type="m" corresp="#s2:l5">DIACATHOLICON</rhyme>
        </l>
        <l id="s2:l8" met="3" type="-+">Leef zulken <rhyme label="d" type="m" corresp="#s2:l6">Medicijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
