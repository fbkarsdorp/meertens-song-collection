  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ioannes die Godts suyver <rhyme label="a" type="m">woort</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Oprechtelijck de Heyden <rhyme label="b" type="f">leerden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Als hy Herodes bloedt-schant <rhyme label="a" type="m" corresp="#s1:l1">hoort</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Soo wast dat hy haest heen <rhyme label="b" type="f" corresp="#s1:l2">keerden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Naer den Dier Vorst ende <rhyme label="b" type="f" corresp="#s1:l2">begeerden</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Te straffen dese vuyle <rhyme label="c" type="m">daedt</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Den lust zijn eerbaerheyt <rhyme label="b" type="f" corresp="#s1:l2">verkeerden</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Waerom Ioannes quam in <rhyme label="c" type="m" corresp="#s1:l6">haet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ioannes by Herodes <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En sprack, Heer Coninck quade <rhyme label="b" type="f">maren</rhyme></l>
        <l id="s2:l3" met="4" type="-+">In ‘t gansche Landt gy hooren <rhyme label="a" type="m" corresp="#s2:l1">laet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Gy wort versoent van uw <rhyme label="b" type="f" corresp="#s2:l2">dienaeren</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">V naeckt een droef en groot <rhyme label="b" type="f" corresp="#s2:l2">beswaren</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Om dat gy uwe Suster <rhyme label="c" type="m">trout</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Die eerst met uw Broeder gingh <rhyme label="b" type="f" corresp="#s2:l2">paren</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">En nu voor uwe Vrouwe <rhyme label="c" type="m" corresp="#s2:l6">hout</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gy die als Coninck wetten <rhyme label="a" type="m">geeft</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En straft de geen die uw weth <rhyme label="b" type="f">breken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Denckt in wat vuyligheyt gy <rhyme label="a" type="m" corresp="#s3:l1">leeft</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">In snoode sond’ gaet gy u <rhyme label="b" type="f" corresp="#s3:l2">steken</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Heer Coninck schouwt dees quade <rhyme label="b" type="f" corresp="#s3:l2">treken</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Mijn Godt den Heer u straffen <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Vw’ bloedtschant sal hy op u <rhyme label="b" type="f" corresp="#s3:l2">vreken</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Vw’ huys en u bederven <rhyme label="c" type="m" corresp="#s3:l6">al</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Herodes vreest Ioannam <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En hy ontsiet om hem te <rhyme label="b" type="f">dooden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maer als zijn boorten-dagh quam <rhyme label="a" type="m" corresp="#s4:l1">weer</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Soo sendt den Coninck uyt veel <rhyme label="b" type="f" corresp="#s4:l2">Boden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En doet zijn naeste Heeren <rhyme label="b" type="f" corresp="#s4:l2">nooden</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Op zijn Geboorte en blijde <rhyme label="c" type="m">Feest</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Daer over dat onder de <rhyme label="b" type="f" corresp="#s4:l2">Ioden</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">En gansche Hof is vreught <rhyme label="c" type="m" corresp="#s4:l6">geweest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Herodes Broeders dochter <rhyme label="a" type="m">treet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">By haer Oom daer hy sat in <rhyme label="b" type="f">vreughden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Op ‘t schoonste verciert en net <rhyme label="a" type="m" corresp="#s5:l1">gekleet</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Met haer Staet-maeghden vol van <rhyme label="b" type="f" corresp="#s5:l2">jeughden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Al dansende haer Oom <rhyme label="b" type="f" corresp="#s5:l2">verheughden</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Sprack, eyscht al wat gy nu <rhyme label="c" type="m">begeert</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Maer haer Moeder vol <rhyme label="b" type="f" corresp="#s5:l2">ondeughden</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Die had haer al een eysch <rhyme label="c" type="m" corresp="#s5:l6">geleert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Heer Coninck laet my dan het <rhyme label="a" type="m">hooft</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Ioannis in een schotel <rhyme label="b" type="f">langen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Gy hebt my eenen eysch <rhyme label="a" type="m" corresp="#s6:l1">belooft</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Gebiedt dat ick mijn eysch <rhyme label="b" type="f" corresp="#s6:l2">ontfangen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Den Coninck wiert bedroeft en <rhyme label="b" type="f" corresp="#s6:l2">bange</rhyme>:</l>
        <l id="s6:l6" met="4" type="-+">Togh om den eedt by hem <rhyme label="c" type="m">gedaen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Is den Scherp-rechter met <rhyme label="b" type="f" corresp="#s6:l2">verstrangen</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Voort naer den Kercker <rhyme label="c" type="m" corresp="#s6:l6">toegegaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Daer hy Ioannes, naer zijn <rhyme label="a" type="m">last</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Terstont het leven heeft <rhyme label="b" type="f">benomen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Het hooft dat haer waer <rhyme label="a" type="m" corresp="#s7:l1">toegepast</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Heeft sy in een schotel <rhyme label="b" type="f" corresp="#s7:l2">bekomen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En gaft haer Moeder sonder <rhyme label="b" type="f" corresp="#s7:l2">schromen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Die oorsaeck was van al dit <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Maer Godt die alles recht doet <rhyme label="b" type="f" corresp="#s7:l2">komen</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Herodes noch straffen <rhyme label="c" type="m" corresp="#s7:l6">laet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
