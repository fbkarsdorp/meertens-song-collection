    <melody>Mocht een man zijn wijf verkopen</melody>
    <categories>
      <category translation="amusement">vermaak</category>
      <category translation="narratives">verhalen</category>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Een nieu liet sal ick u <rhyme label="a" type="f">singen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Hoort nu toe Int kort <rhyme label="b" type="m">bedrief</rhyme></l>
        <l id="s1:l3" met="4" type="-+">hoe dat er een koepman Is <rhyme label="a" type="f" corresp="#s1:l1">geuaeren</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Die daer vryde een lantmans <rhyme label="b" type="m" corresp="#s1:l2">wijf</rhyme></l>
        <l id="s1:l5" met="6" type="-+">Dom dom dom deinne om te crygen syn <rhyme label="b" type="m" corresp="#s1:l2">geryf</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick sal u hondert kroenen <rhyme label="a" type="f">geeven</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Laet myn wil aen u <rhyme label="b" type="m">geschien</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Dat vrouken sprack al sonder <rhyme label="a" type="f" corresp="#s2:l1">sneeuen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Wilt een ander dach <rhyme label="b" type="m" corresp="#s2:l2">voorsien</rhyme></l>
        <l id="s2:l5" met="6" type="-+">Dom dom dom ... want Ick ben In huis <rhyme label="b" type="m" corresp="#s2:l2">alleen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Oeuer acht daegen Ick laet u <rhyme label="a" type="f">weeten</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Sal myn man te bergen <rhyme label="b" type="m">syn</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Wilt u tyt dan niet <rhyme label="a" type="f" corresp="#s3:l1">voorgeten</rhyme></l>
        <l id="s3:l4" met="4" type="-+">brenckt met u die koele <rhyme label="b" type="m" corresp="#s3:l2">wyn</rhyme></l>
        <l id="s3:l5" met="6" type="-+">Dom dom dom deinne soe slaep gy Inde arme <rhyme label="b" type="m" corresp="#s3:l2">(myn</rhyme>)</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die koopman quam al op syn <rhyme label="a" type="f">tyt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Al op syn tyt hoort myn <rhyme label="b" type="m">voormaen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">hy Is al op syn paert <rhyme label="a" type="f" corresp="#s4:l1">gekoemen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Dat was met wyn en gelt <rhyme label="b" type="m" corresp="#s4:l2">gelaen</rhyme></l>
        <l id="s4:l5" met="6" type="-+">Dom dom deinne dat paert dat most daer buiten <rhyme label="b" type="m" corresp="#s4:l2">staen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dien buer die sach al voer syn <rhyme label="a" type="f">oegen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Dat sy maeckten goede <rhyme label="b" type="m">sier</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Hy heeft het paert op stal <rhyme label="a" type="f" corresp="#s5:l1">getoogen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Want hy brochter voor een <rhyme label="b" type="m" corresp="#s5:l2">stier</rhyme></l>
        <l id="s5:l5" met="6" type="-+">Dom dom deinne gesaelt getoemt maer alsoe <rhyme label="b" type="m" corresp="#s5:l2">fier</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doen hy Die stier hadt gaen <rhyme label="a" type="f">beryen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Die stier die maeckte groet <rhyme label="b" type="m">gevaer</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Sy mosten van malkander <rhyme label="a" type="f" corresp="#s6:l1">scheyen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Want diem boer quam met een <rhyme label="b" type="m" corresp="#s6:l2">swaert</rhyme></l>
        <l id="s6:l5" met="6" type="-+">dom dom deinne die koopman die spronck op syn <rhyme label="b" type="m" corresp="#s6:l2">paert</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy meinde soe nae huis te <rhyme label="a" type="f">ryden</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Hy stack die stier met spoeren <rhyme label="b" type="m">bloet</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Die stier die liep aen allen <rhyme label="a" type="f" corresp="#s7:l1">syden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">te voerschoeten In de <rhyme label="b" type="m" corresp="#s7:l2">sloet</rhyme></l>
        <l id="s7:l5" met="6" type="-+">Dom ...  die koopman lach in groeter <rhyme label="b" type="m" corresp="#s7:l2">noet</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy sey oe heer wat baet <rhyme label="a" type="f">gesweegen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">helpt doch myn arm <rhyme label="b" type="m">gesel</rhyme></l>
        <l id="s8:l3" met="4" type="-+">hy sey wat paert heb Ick hier <rhyme label="a" type="f" corresp="#s8:l1">gekreegen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">het lyckt wel die duiuel vande <rhyme label="b" type="m" corresp="#s8:l2">hel</rhyme></l>
        <l id="s8:l5" met="6" type="-+">Dom ... hoe kom ick nu in dit <rhyme label="b" type="m" corresp="#s8:l2">gequel</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Gy heeren en prinsen wilt het (wel) <rhyme label="a" type="f">ont(houwen</rhyme>)</l>
        <l id="s9:l2" met="4" type="-+">Die gaeren uit boeleeren <rhyme label="b" type="m">gaet</rhyme></l>
        <l id="s9:l3" met="4" type="-+">bemint doch geen ander geechte <rhyme label="a" type="f" corresp="#s9:l1">vrouwe</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Int ent soe wort het al <rhyme label="b" type="m" corresp="#s9:l2">betaelt</rhyme></l>
        <l id="s9:l5" met="6" type="-+">Dom ... somtyts worden wy al <rhyme label="b" type="m" corresp="#s9:l2">voora(et</rhyme>)</l>
      </lg>
    </lg>
  </text>
