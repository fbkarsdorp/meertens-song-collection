    <melody>Lofzang van Maria</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Myn Ziel verlanght soo <rhyme label="a" type="m">seer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Na u gracy, o <rhyme label="a" type="m" corresp="#s1:l1">Heer</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">O Godt seer hooch <rhyme label="b" type="f">ghepresen</rhyme>!</l>
        <l id="s1:l4" met="3" type="-+">Wanneer sal ‘t doch eens <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dat ick van ‘t <rhyme label="c" type="m" corresp="#s1:l4">mijns-fenijn</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Gheheel sal sijn <rhyme label="b" type="f" corresp="#s1:l3">ghenesen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En dienen u <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ghy bent doch die ick <rhyme label="a" type="m" corresp="#s2:l1">meen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">O Heer! dits mijn <rhyme label="b" type="f">begeeren</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Ick doe doch anders <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Dan dat my na <rhyme label="c" type="m" corresp="#s2:l4">verdriet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En mijn u doet <rhyme label="b" type="f" corresp="#s2:l3">ontbeeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dit isser in de <rhyme label="a" type="m">weegh</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">Dat ick niet anders <rhyme label="a" type="m" corresp="#s3:l1">pleegh</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dan dat mijn Heer is <rhyme label="b" type="f">teghen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En dat ick flau en <rhyme label="c" type="m">traegh</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Niet staegh en even <rhyme label="c" type="m" corresp="#s3:l4">graegh</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Gae in mijns Heeren <rhyme label="b" type="f" corresp="#s3:l3">weghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ontfonght Heer soo mijn <rhyme label="a" type="m">Ziel</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat ick al ‘t aertsch <rhyme label="a" type="m" corresp="#s4:l1">verniel</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat my van u doet <rhyme label="b" type="f">scheyden</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Ach hoe is my soo <rhyme label="c" type="m">bangh</rhyme>!</l>
        <l id="s4:l5" met="3" type="-+">Als ick denck Heer hoe <rhyme label="c" type="m" corresp="#s4:l4">langh</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat ghy na my gaet <rhyme label="b" type="f" corresp="#s4:l3">beyden</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ach! maeckt my soo <rhyme label="a" type="m">bereyt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat ick u <rhyme label="a" type="m" corresp="#s5:l1">majesteyt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Mijn Heer, mach Bruygom <rhyme label="b" type="f">noemen</rhyme>!</l>
        <l id="s5:l4" met="3" type="-+">Want ick ben doch maer <rhyme label="c" type="m">aerd</rhyme>’,</l>
        <l id="s5:l5" met="3" type="-+">En noch in ‘t minst niet <rhyme label="c" type="m" corresp="#s5:l4">waert</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Om my u Maeght te <rhyme label="b" type="f" corresp="#s5:l3">roemen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy bent eens Conincx <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En ick aan slecht <rhyme label="a" type="m" corresp="#s6:l1">persoon</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">‘t Is ‘t ongelijcken <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hoe sou ‘k dan sijn u <rhyme label="c" type="m">Bruydt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dit waer te grooten <rhyme label="c" type="m" corresp="#s6:l4">buydt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">O neen! dat can niet <rhyme label="b" type="f" corresp="#s6:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ick sie dunckt my een <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En dit leyt staegh in <rhyme label="a" type="m" corresp="#s7:l1">mijn</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Dat ick noch hoogh <rhyme label="b" type="f">verheven</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Sal boven in den <rhyme label="c" type="m">troon</rhyme></l>
        <l id="s7:l5" met="3" type="-+">By u, o schoonste <rhyme label="c" type="m" corresp="#s7:l4">schoon</rhyme>!</l>
        <l id="s7:l6" met="3" type="-+">Met al u Eng’len <rhyme label="b" type="f" corresp="#s7:l3">sweven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Want d’Engeltjens, seer <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Staen met een heet <rhyme label="a" type="m" corresp="#s8:l1">ghemoet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En met een groot <rhyme label="b" type="f">verlanghen</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">En luyst’ren na dit <rhyme label="c" type="m">woort</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Dat seyt: gaet spoedigh <rhyme label="c" type="m" corresp="#s8:l4">voort</rhyme></l>
        <l id="s8:l6" met="3" type="-+">En stuurt dit schaep haer <rhyme label="b" type="f" corresp="#s8:l3">gangen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ter eeren uwen <rhyme label="a" type="m">naem</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Maeckt doch de wegh <rhyme label="a" type="m" corresp="#s9:l1">bequaem</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Tot mijnder Zielen <rhyme label="b" type="f">vreden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Waer blijf ick dan na <rhyme label="c" type="m">staen</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Ick hoef maer voort te <rhyme label="c" type="m" corresp="#s9:l4">gaen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Want ‘t is voor my noch <rhyme label="b" type="f" corresp="#s9:l3">heden</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">O Heer, dit maeckt mijn <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Ia ‘t is voor my te <rhyme label="a" type="m" corresp="#s10:l1">goet</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Als ick ‘t ga over <rhyme label="b" type="f">weghen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Hoe sou ‘k dan u <rhyme label="c" type="m">versmaan</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Neen tot de smalle <rhyme label="c" type="m" corresp="#s10:l4">baan</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Moet ick my heel <rhyme label="b" type="f" corresp="#s10:l3">verleghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Al ist het vleys wat <rhyme label="a" type="m">swaer</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">‘t Sal soet weer sijn hier <rhyme label="a" type="m" corresp="#s11:l1">naer</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Ick moet hier leeren <rhyme label="b" type="f">derven</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">De vreught is ‘t over <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Het quaest’ dat is den <rhyme label="c" type="m" corresp="#s11:l4">doot</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">‘t Vleys moet doch eenmael <rhyme label="b" type="f" corresp="#s11:l3">sterven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wat is doch ‘s vleys <rhyme label="a" type="m">wel-lust</rhyme>?</l>
        <l id="s12:l2" met="3" type="-+">Het baert maer staegh <rhyme label="a" type="m" corresp="#s12:l1">onrust</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En namaels eeuwigh <rhyme label="b" type="f">knagen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Want eeuwigh vreuchts <rhyme label="c" type="m">geniet</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Of eeuwigh in ‘t <rhyme label="c" type="m" corresp="#s12:l4">verdriet</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Wie soud’ dit laetst <rhyme label="b" type="f" corresp="#s12:l3">verdraghen</rhyme>?</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">O Heer, reyckt my u <rhyme label="a" type="m">hant</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Doet u jonck schaap <rhyme label="a" type="m" corresp="#s13:l1">bystant</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Ghy kent mijns Geestes <rhyme label="b" type="f">suchten</rhyme>:</l>
        <l id="s13:l4" met="3" type="-+">O Heer, bewaert my <rhyme label="c" type="m">doch</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Voor ‘s werelts loos <rhyme label="c" type="m" corresp="#s13:l4">bedroch</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">En al haer snoode <rhyme label="b" type="f" corresp="#s13:l3">vruchten</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Adieu nu swerelts <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Met al u boosen <rhyme label="a" type="m" corresp="#s14:l1">raet</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">‘k Wil my op wegh <rhyme label="b" type="f">begeven</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">Al na mijn Coninghs <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Daer leyt al mijnen <rhyme label="c" type="m" corresp="#s14:l4">schat</rhyme></l>
        <l id="s14:l6" met="3" type="-+">Mijn lust en al mijn <rhyme label="b" type="f" corresp="#s14:l3">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
