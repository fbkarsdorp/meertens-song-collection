    <melody>O kerstnacht schoner dan de dagen</melody>
  <author>Pieter Dubbels</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Veilig heil! Ã´ heilig <rhyme label="a" type="f">meng'len</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Als liefdens diamante <rhyme label="a" type="f" corresp="#s1:l1">streng'len</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gewijt door trouwheits <rhyme label="b" type="m">fakkel-gloet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Twe harten (een door klem van <rhyme label="c" type="f">handen</rhyme>,)</l>
        <l id="s1:l5" met="4" type="-+">Op weer-mins-oever-vlak doen <rhyme label="c" type="f" corresp="#s1:l4">stranden</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Daar zoete weelt de zieltjes <rhyme label="b" type="m" corresp="#s1:l3">voed</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Min! ik zie uw knopje <rhyme label="a" type="f">blozen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Trots 't keurigst' puik van purp're <rhyme label="a" type="f" corresp="#s2:l1">rozen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Met dauw en zonneschijn <rhyme label="b" type="m">gevoed</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">De ware liefde zij uw <rhyme label="c" type="f">wapen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Op dat gij vreugt, uit vreugt, moogt <rhyme label="c" type="f" corresp="#s2:l4">rapen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Door hoop van 't eeuwgeveste <rhyme label="b" type="m" corresp="#s2:l3">zoet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laat Hoop en Liefde eeuwig <rhyme label="a" type="f">pronkken</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Op Krist-gewijde <rhyme label="a" type="f" corresp="#s3:l1">harssen-stronkken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Op dat uw sterflijk blos, <rhyme label="b" type="m">geschent</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Door Atrops alverslinb're <rhyme label="c" type="f">poten</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Den Groten Hovenier uw' <rhyme label="c" type="f" corresp="#s3:l4">loten</rhyme></l>
        <l id="s3:l6" met="4" type="-+">In 't eeuwig vrugtbare Akker <rhyme label="b" type="m" corresp="#s3:l3">ent</rhyme>.</l>
      </lg>
    </lg>
  </text>
