  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">KOom hier voor u deurtje <rhyme label="a" type="f">speelen</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Met myn Lier <rhyme label="b" type="f">malade</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Wil myn Juffrouw wat mee <rhyme label="a" type="f" corresp="#s1:l1">deelen</rhyme>?</l>
        <l id="s1:l4" met="3" type="+-">’t Saet in haer <rhyme label="b" type="f" corresp="#s1:l2">genade</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">’k Sal myn Lier eens laten <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dat het Juffrouw sal <rhyme label="c" type="f" corresp="#s1:l5">bekooren</rhyme>:</l>
        <l id="s1:l7" met="3" type="+-">Van deuntjes Duits of <rhyme label="d" type="f">Franse</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Wat Mamozel wil <rhyme label="d" type="f" corresp="#s1:l7">danse</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Met dat rasen ’k wil niet <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Na u gruis grons <rhyme label="b" type="f">Lieren</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Dat kan geen Juffrouws hert <rhyme label="a" type="f" corresp="#s2:l1">bekooren</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Maer andere <rhyme label="b" type="f" corresp="#s2:l2">Tierelieren</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Gaet met u Liertje elders <rhyme label="c" type="f">speelen</rhyme>;</l>
        <l id="s2:l6" met="4" type="+-">Want ik sal u niet mee <rhyme label="c" type="f" corresp="#s2:l5">deelen</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Daerom wilt <rhyme label="d" type="f">vertrekken</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Gy kunt geen gunst <rhyme label="d" type="f" corresp="#s2:l7">verwekken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Deese woorde doen myn <rhyme label="a" type="f">pyne</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">De gierigheid myn <rhyme label="b" type="f">smerte</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Gy kunt die nog doen <rhyme label="a" type="f" corresp="#s3:l1">verdwynen</rhyme>:</l>
        <l id="s3:l4" met="3" type="+-">Door milde gunst uw ’s <rhyme label="b" type="f" corresp="#s3:l2">herten</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">’k Sal myn Lier eens laten <rhyme label="c" type="f">klinken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Wilt myn deeze keer <rhyme label="c" type="f" corresp="#s3:l5">gedenken</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Van deeze <rhyme label="d" type="f">Kermisdage</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Zal ik u niet meer <rhyme label="d" type="f" corresp="#s3:l7">vragen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ik wil geen gehoor <rhyme label="a" type="f">verleenen</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Na de viese <rhyme label="b" type="f">vase</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Gaat daarse kleine Kinders <rhyme label="a" type="f" corresp="#s4:l1">speenen</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Met u Liertje <rhyme label="b" type="f" corresp="#s4:l2">raase</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">U Lier is om geen min te <rhyme label="c" type="f">blussen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Maar voor Kinderen te <rhyme label="c" type="f" corresp="#s4:l5">zussen</rhyme>:</l>
        <l id="s4:l7" met="3" type="+-">Brengt spel voor jonge <rhyme label="d" type="f">Maagden</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Dat Venus nooit <rhyme label="d" type="f" corresp="#s4:l7">beklaagde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Daar zit gy alle soort van <rhyme label="a" type="f">Neusen</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Uit de andere <rhyme label="b" type="f">wereld</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Koning, Prinsen, Vorsten, <rhyme label="a" type="f" corresp="#s5:l1">Reusen</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Fraai Corjeus <rhyme label="b" type="f" corresp="#s5:l2">bepeereld</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Pruysen kunt gy ook zien <rhyme label="c" type="f">vegten</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Tegen Dann met zyn Krygs <rhyme label="c" type="f" corresp="#s5:l5">knegten</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">De Duivelen en de <rhyme label="d" type="f">Bakker</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Die trekken saamen <rhyme label="d" type="f" corresp="#s5:l7">wakker</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dat is maar schaduwe <rhyme label="a" type="f">gemommel</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Ik zeg gy kunt <rhyme label="b" type="f">vertrekken</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">’k Hou van leevendig <rhyme label="a" type="f" corresp="#s6:l1">gestommel</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Die vreugde kan <rhyme label="b" type="f" corresp="#s6:l2">verwekken</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Al u soort van <rhyme label="c" type="f">Savojaaren</rhyme>:</l>
        <l id="s6:l6" met="4" type="+-">Komen om Hollands geld te <rhyme label="c" type="f" corresp="#s6:l5">gaaren</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Daar zy het meest van <rhyme label="d" type="f">houwe</rhyme>:</l>
        <l id="s6:l8" met="3" type="+-">Maar niet van de <rhyme label="d" type="f" corresp="#s6:l7">Vrouwe</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">’k Heb een drommels kwaade <rhyme label="a" type="f">Vrouwe</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Die myn komt <rhyme label="b" type="f">verveelen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Zy zou dag en nagt wel <rhyme label="a" type="f" corresp="#s7:l1">houwe</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Van met myn Lier te <rhyme label="b" type="f" corresp="#s7:l2">speelen</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">Kon Juffrouw zo een Liertje <rhyme label="c" type="f">koopen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Dat ’s avonds by haar kwam <rhyme label="c" type="f" corresp="#s7:l5">gekroopen</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Zy zou hem niet <rhyme label="d" type="f">versmaaden</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Maar vangen in <rhyme label="d" type="f" corresp="#s7:l7">genaden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Juffrouw zou ’t Liertje ook wel <rhyme label="a" type="f">stellen</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Op Venus <rhyme label="b" type="f">Minnesnaaren</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">En meer als by de nagte <rhyme label="a" type="f" corresp="#s8:l1">kwellen</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Kon haar dat doen <rhyme label="b" type="f" corresp="#s8:l2">paaren</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">Wat zou de Lier klank zyn <rhyme label="c" type="f">gepreesen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Kon hy Venus min <rhyme label="c" type="f" corresp="#s8:l5">geneezen</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">By de Jonge <rhyme label="d" type="f">Dame</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">De Lier was <rhyme label="d" type="f" corresp="#s8:l7">aangenaame</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
