  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MYn GODT wat wonder <rhyme label="a" type="f">dingen</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Dat CHRISTVM dus <rhyme label="a" type="f" corresp="#s1:l1">om-ringen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dit Priesterlijck <rhyme label="b" type="m">Gedrocht</rhyme>?</l>
        <l id="s1:l4" met="3" type="-+">Die voor hem souden <rhyme label="c" type="f">spreken</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Gebruycken valsche <rhyme label="c" type="f" corresp="#s1:l4">treken</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Zijn Doodt siet, wordt <rhyme label="b" type="m" corresp="#s1:l3">gesocht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dees VVolven dorsten <rhyme label="a" type="f">bloedigh</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Na zijn Bloedt: Des hem <rhyme label="a" type="f" corresp="#s2:l1">woedigh</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als een onnoosel <rhyme label="b" type="m">Lam</rhyme></l>
        <l id="s2:l4" met="3" type="-+">(Want geen schuldt zy en <rhyme label="c" type="f">vinden</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wat zy oock <rhyme label="c" type="f" corresp="#s2:l4">onder-winden</rhyme>)</l>
        <l id="s2:l6" met="3" type="-+">Gaat cruycen ABR'AMS <rhyme label="b" type="m" corresp="#s2:l3">Stam</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">PILATI <rhyme label="a" type="f">Goddeloosheyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Des Voschs HERODIS <rhyme label="a" type="f" corresp="#s3:l1">boosheydt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hem deden gantsch geen <rhyme label="b" type="m">quaadt</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Dus blijckt dat in dees <rhyme label="c" type="f">VVolven</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Een wreedtheydt leydt <rhyme label="c" type="f" corresp="#s3:l4">bedolven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die't al te boven <rhyme label="b" type="m" corresp="#s3:l3">gaat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ey siet-se nu eens <rhyme label="a" type="f">tieren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Gelijck de dulle <rhyme label="a" type="f" corresp="#s4:l1">Stieren</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Wat gaat u Rechter <rhyme label="b" type="m">aan</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat ghy u niet derft <rhyme label="c" type="f">setten</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Om na u eygen <rhyme label="c" type="f" corresp="#s4:l4">Wetten</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dien ghy vry-spreeckt <rhyme label="b" type="m" corresp="#s4:l3">t'ontslaan</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Doch HEERE GODT <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dus moest hy sijn <rhyme label="a" type="f" corresp="#s5:l1">verwesen</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Hier sullen door <rhyme label="b" type="m">bestaan</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Als hy sal comen <rhyme label="c" type="f">rechten</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Die waren Sondens <rhyme label="c" type="f" corresp="#s5:l4">Knechten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Maar nu 'sDueghds paden <rhyme label="b" type="m" corresp="#s5:l3">gaan</rhyme>.</l>
      </lg>
    </lg>
  </text>
