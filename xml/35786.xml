    <melody>Des morgens voor dag in het veld al bij de weg</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">LAet ons met <rhyme label="a" type="m">vreught</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Yet vande liefde <rhyme label="b" type="f">stralen</rhyme></l>
        <l id="s1:l3" met="2" type="-+">En van de <rhyme label="a" type="m" corresp="#s1:l1">deught</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van Sint Lucas <rhyme label="b" type="f" corresp="#s1:l2">verhalen</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Godt met <rhyme label="c" type="m">gewin</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Schoot in zijn <rhyme label="c" type="m" corresp="#s1:l5">sin</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Schoot in, schoot in, schoot in zijn <rhyme label="c" type="m" corresp="#s1:l5">sin</rhyme>.</l>
        <l id="s1:l8" met="3" type="+-">De pyle van sijn <rhyme label="c" type="m" corresp="#s1:l5">min</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Wat oogh en <rhyme label="a" type="m">hart</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Door 's Werelts <rhyme label="b" type="f">guygieryen</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Blint, en <rhyme label="a" type="m" corresp="#s2:l1">verwart</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Versmaet. En als <rhyme label="b" type="f" corresp="#s2:l2">Marye</rhyme></l>
        <l id="s2:l5" met="2" type="-+">'T beste deel <rhyme label="c" type="m">kiest</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Godt noyt <rhyme label="c" type="m" corresp="#s2:l5">verliest</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Godt noyt, Godt noyt, Godt noyt <rhyme label="c" type="m" corresp="#s2:l5">verliest</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Hoe seer 'd helsche Leeuw <rhyme label="c" type="m" corresp="#s2:l5">briescht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Na 't edel <rhyme label="a" type="m">bloet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Siet om met hart noch <rhyme label="b" type="f">oogen</rhyme>;</l>
        <l id="s3:l3" met="2" type="-+">Noch zijn <rhyme label="a" type="m" corresp="#s3:l1">gemoet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Heeft 's Werelts-aes <rhyme label="b" type="f" corresp="#s3:l2">bedrogen</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Noch d'helsche <rhyme label="c" type="m">Vos</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Van 't aerts blijft <rhyme label="c" type="m" corresp="#s3:l5">los</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Van t' aerts, van t' aerts, van 't aerts blijft <rhyme label="c" type="m" corresp="#s3:l5">los</rhyme>:</l>
        <l id="s3:l8" met="3" type="+-">Blijft vast als een <rhyme label="c" type="m" corresp="#s3:l5">steenrots</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Hoe dat het <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Altijdt is <rhyme label="b" type="f">weltevrede</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Leeft na Goods <rhyme label="a" type="m" corresp="#s4:l1">raet</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Geen tijdt onnut <rhyme label="b" type="f" corresp="#s4:l2">bestede</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Noch 't minste <rhyme label="c" type="m">lidt</rhyme>.</l>
        <l id="s4:l6" met="2" type="-+">Sijn ziel blijft <rhyme label="c" type="m" corresp="#s4:l5">wit</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Sijn ziel, sijn ziel, sijn ziel blijft <rhyme label="c" type="m" corresp="#s4:l5">wit</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Schrijft, schildert, preeckt of <rhyme label="c" type="m" corresp="#s4:l5">bidt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Sijn deughden <rhyme label="a" type="m">out</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Noyt eyge lof <rhyme label="b" type="f">besmeurde</rhyme>.</l>
        <l id="s5:l3" met="2" type="-+">Noyt is <rhyme label="a" type="m" corresp="#s5:l1">getrout</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">In pijn noch plagen <rhyme label="b" type="f" corresp="#s5:l2">treurde</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">'T hart in Godt <rhyme label="c" type="m">rust</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Volght wil noch <rhyme label="c" type="m" corresp="#s5:l5">lust</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Volght wil, volght wil, volght wil noch <rhyme label="c" type="m" corresp="#s5:l5">rust</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Sijn liefde niet uyt <rhyme label="c" type="m" corresp="#s5:l5">blust</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Elck woordt, van <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Euangely <rhyme label="b" type="f">gepresen</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Als <rhyme label="a" type="m" corresp="#s6:l1">Medecijn</rhyme></l>
        <l id="s6:l4" met="3" type="-+">De Sondaers komt <rhyme label="b" type="f" corresp="#s6:l2">genese</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Heydens <rhyme label="c" type="m">bekeert</rhyme>;</l>
        <l id="s6:l6" met="2" type="-+">Godt looft en <rhyme label="c" type="m" corresp="#s6:l5">eert</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Godt looft, Godt looft, Godt looft en <rhyme label="c" type="m" corresp="#s6:l5">eert</rhyme>;</l>
        <l id="s6:l8" met="3" type="+-">Niet hem van Paulus <rhyme label="c" type="m" corresp="#s6:l5">weert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Klaer als de <rhyme label="a" type="m">Maen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">'t Licht schijnt van kintsche <rhyme label="b" type="f">beenen</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">En in 't <rhyme label="a" type="m" corresp="#s7:l1">voorgaen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Heeft als een Zonn' <rhyme label="b" type="f" corresp="#s7:l2">gescheenen</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">Wijs <rhyme label="c" type="m">onpeylbaer</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Was de'es <rhyme label="c" type="m" corresp="#s7:l5">Leeraer</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Was de'es, was de'es, was de'es <rhyme label="c" type="m" corresp="#s7:l5">Leeraer</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Sterft Maeght en <rhyme label="c" type="m" corresp="#s7:l5">Martelaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Luca, vrient <rhyme label="a" type="m">Goods</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">Verkrijght dat wy <rhyme label="b" type="f">verwinnen</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Al dat is <rhyme label="a" type="m" corresp="#s8:l1">boos</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Van buyten en van <rhyme label="b" type="f" corresp="#s8:l2">binnen</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Dat <rhyme label="c" type="m">water-vloet</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Noch vleysch, noch <rhyme label="c" type="m" corresp="#s8:l5">bloet</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Noch vleysch, noch vlesch, noch vleysch noch <rhyme label="c" type="m" corresp="#s8:l5">bloet</rhyme></l>
        <l id="s8:l8" met="3" type="+-">Goods liefde brand uyt <rhyme label="c" type="m" corresp="#s8:l5">doet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
