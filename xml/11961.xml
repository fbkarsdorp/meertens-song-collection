    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIlt g' u gaven recht <rhyme label="a" type="f">besteden</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Aen de <rhyme label="a" type="f" corresp="#s1:l1">leden</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Die behoeftigh sijn en <rhyme label="b" type="m">kranck</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Voeght u giften nae <rhyme label="c" type="f">GodsWetten</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">En wilt <rhyme label="c" type="f" corresp="#s1:l4">letten</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Dat gy hout den rechten <rhyme label="b" type="m" corresp="#s1:l3">ganck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Milde Christ'nen zijn <rhyme label="a" type="f">goetdadigh</rhyme></l>
        <l id="s2:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s2:l1">ghenadigh</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Doch niet anders gheen <rhyme label="b" type="m">ooghmerck</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Dan om God, den Heer der <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Hoogh te <rhyme label="c" type="f" corresp="#s2:l4">eeren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">En te doen een heyligh <rhyme label="b" type="m" corresp="#s2:l3">werck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Met een hertelijck <rhyme label="a" type="f">medoghen</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Hy <rhyme label="a" type="f" corresp="#s3:l1">bewoghen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Is, wanneer hy yet wat <rhyme label="b" type="m">gheeft</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">'t Arme volck hy noyt <rhyme label="c" type="f">gheriefde</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Sonder <rhyme label="c" type="f" corresp="#s3:l4">liefde</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Hier sijn hert een schrick van <rhyme label="b" type="m" corresp="#s3:l3">heeft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hy en soeckt gheen <rhyme label="a" type="f">yd'le-eere</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Door 't <rhyme label="a" type="f" corresp="#s4:l1">vereere</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Van sijn gaven, wat hy <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Doet hy met een diep <rhyme label="c" type="f">verne'ere</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Voor den <rhyme label="c" type="f" corresp="#s4:l4">Heere</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">En met een oprecht <rhyme label="b" type="m" corresp="#s4:l3">ghemoet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Die met armoe sijn <rhyme label="a" type="f">beladen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Hy <rhyme label="a" type="f" corresp="#s5:l1">versmaden</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Nimmer sal; noch bitzich <rhyme label="b" type="m">woort</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Haer toe spreecken, die daer <rhyme label="c" type="f">steecken</rhyme></l>
        <l id="s5:l5" met="2" type="+-">In <rhyme label="c" type="f" corresp="#s5:l4">ghebreecken</rhyme>;</l>
        <l id="s5:l6" met="4" type="+-">Hy haer klachten min'lijck <rhyme label="b" type="m" corresp="#s5:l3">hoort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Armoe weet hy, kan niet <rhyme label="a" type="f">hind'ren</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Om Gods <rhyme label="a" type="f" corresp="#s6:l1">kind'ren</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Door sijn gunst te wesen. <rhyme label="b" type="m">Godt</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Laet soo wel den hongher <rhyme label="c" type="f">komen</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Op de <rhyme label="c" type="f" corresp="#s6:l4">vroomen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Als die laten sijn <rhyme label="b" type="m" corresp="#s6:l3">ghebodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'t Gheen sijn hert gheeft aen den <rhyme label="a" type="f">Armen</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Met <rhyme label="a" type="f" corresp="#s7:l1">ontfarmen</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Wert ghegheven, en met <rhyme label="b" type="m">vreucht</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Hy verblijt sich, als hy <rhyme label="c" type="f">gheven</rhyme></l>
        <l id="s7:l5" met="2" type="+-">Magh, die <rhyme label="c" type="f" corresp="#s7:l4">leven</rhyme></l>
        <l id="s7:l6" met="4" type="+-">In ghebreck en <rhyme label="b" type="m" corresp="#s7:l3">ongheneucht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Noyt sijn hert sal <rhyme label="a" type="f">wederwenschen</rhyme></l>
        <l id="s8:l2" met="2" type="+-">Van de <rhyme label="a" type="f" corresp="#s8:l1">menschen</rhyme></l>
        <l id="s8:l3" met="4" type="+-">'t Eens ghegheven goet: Hy <rhyme label="b" type="m">weet</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Dat den milden Godt meer <rhyme label="c" type="f">seghent</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Die <rhyme label="c" type="f" corresp="#s8:l4">bejeghent</rhyme></l>
        <l id="s8:l6" met="4" type="+-">d'Armen wel in kruys en <rhyme label="b" type="m" corresp="#s8:l3">leet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Daet toe weet hy dat het <rhyme label="a" type="f">gheene</rhyme></l>
        <l id="s9:l2" met="2" type="+-">Hy den <rhyme label="a" type="f" corresp="#s9:l1">eene</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Of den ander heeft <rhyme label="b" type="m">ghedaen</rhyme>;</l>
        <l id="s9:l4" met="4" type="+-">Heeft ghedaen, niet van sijn <rhyme label="c" type="f">haven</rhyme></l>
        <l id="s9:l5" met="2" type="+-">Maer Gods <rhyme label="c" type="f" corresp="#s9:l4">gaven</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">En nochtans sal loon <rhyme label="b" type="m" corresp="#s9:l3">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Kan hy nu een mensch <rhyme label="a" type="f">versorghen</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Hy hem <rhyme label="a" type="f" corresp="#s10:l1">morghen</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Niet sal roepen, op dat <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s10:l4" met="4" type="+-">De gheleghentheyt, om <rhyme label="c" type="f">ymant</rhyme></l>
        <l id="s10:l5" met="2" type="+-">Te doen <rhyme label="c" type="f" corresp="#s10:l4">bystant</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Met den tijdt voor by en <rhyme label="b" type="m" corresp="#s10:l3">schiet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Gheeft hy wat, soo sal hy <rhyme label="a" type="f">gheven</rhyme></l>
        <l id="s11:l2" met="2" type="+-">In sijn <rhyme label="a" type="f" corresp="#s11:l1">leven</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Als hy 't goet ghebruycken <rhyme label="b" type="m">kan</rhyme>;</l>
        <l id="s11:l4" met="4" type="+-">Niet juyst dan, als hy door <rhyme label="c" type="f">sterven</rhyme></l>
        <l id="s11:l5" met="2" type="+-">'t Goet moet <rhyme label="c" type="f" corresp="#s11:l4">derven</rhyme></l>
        <l id="s11:l6" met="4" type="+-">En gheheel daer scheyden <rhyme label="b" type="m" corresp="#s11:l3">van</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Soo hy wenscht dat and'r hem <rhyme label="a" type="f">dede</rhyme></l>
        <l id="s12:l2" met="2" type="+-">Als hy <rhyme label="a" type="f" corresp="#s12:l1">lede</rhyme></l>
        <l id="s12:l3" met="4" type="+-">Honghersnoot, soo doet hy <rhyme label="b" type="m">me'e</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Op dat hy recht sy <rhyme label="c" type="f">goetaerdigh</rhyme></l>
        <l id="s12:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s12:l4">rechtvaerdigh</rhyme></l>
        <l id="s12:l6" met="4" type="+-">En by Godt magh hebben <rhyme label="b" type="m" corresp="#s12:l3">ste'e</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
