    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">In eenen boghaert quaem ic <rhyme label="a" type="m">ghegaen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Des morghens voer der <rhyme label="b" type="f">sonnen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Daer ic vant eenen edelen <rhyme label="a" type="m" corresp="#s1:l1">hert</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Omuaen met fellen <rhyme label="b" type="f" corresp="#s1:l2">honden</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die eerste die hem uolgde <rhyme label="a" type="m">nae</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Was iudas die felle <rhyme label="b" type="f">quade</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Hij heeften in sijn doot <rhyme label="a" type="m" corresp="#s2:l1">gheiaeght</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Met sinen valschen <rhyme label="b" type="f" corresp="#s2:l2">rade</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Doe sloeghen al die honden <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die daer waren <rhyme label="b" type="f">comen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">En hebben desen scoenen <rhyme label="a" type="m" corresp="#s3:l1">hert</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Sijn edel lijf <rhyme label="b" type="f" corresp="#s3:l2">ghenoneen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Aen een calummen was dese <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Seer felleclich <rhyme label="b" type="f">ghebonden</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Met gheeselen met slaghen <rhyme label="a" type="m" corresp="#s4:l1">swaer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ontfinchij diepe <rhyme label="b" type="f" corresp="#s4:l2">wonden</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dese ouer edel scoene <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van eender maght <rhyme label="b" type="f">gheboren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Hij was ghecroent al op sijn <rhyme label="a" type="m" corresp="#s5:l1">hoot</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met tweenseuentich <rhyme label="b" type="f" corresp="#s5:l2">doren</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Op sijn scouder moesthij <rhyme label="a" type="m">draghen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">God en <rhyme label="b" type="f">creatuere</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Dat Cruce swaer daer hij aen <rhyme label="a" type="m" corresp="#s6:l1">sterf</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Als ons ghtught <rhyme label="b" type="f" corresp="#s6:l2">scrijfture</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Al op dat cruce wert hij <rhyme label="a" type="m">gheleet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Met naghelen vast <rhyme label="b" type="f">ghebonden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Daer liet hy hem sijn mijnlijc <rhyme label="a" type="m" corresp="#s7:l1">hert</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Met eenen speer doer <rhyme label="b" type="f" corresp="#s7:l2">wonden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Daer spronghen vijf riuieren <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die ons van sonden <rhyme label="b" type="f">vrien</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Diese sdaechs niet eens en <rhyme label="a" type="m" corresp="#s8:l1">gruet</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Hij maechs hem wel <rhyme label="b" type="f" corresp="#s8:l2">vermien</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Daer onder stont sijn moeder <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Met liden swaer <rhyme label="b" type="f">beuanghen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Sij liet dat sweert des rouwen <rhyme label="a" type="m" corresp="#s9:l1">swaer</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Al doer haer herte <rhyme label="b" type="f" corresp="#s9:l2">ganghen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Neuen haer stont sijn minnersse <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Die droeue <rhyme label="b" type="f">magdaleene</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Sij heeft dat alder beste <rhyme label="a" type="m" corresp="#s10:l1">deel</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Sprac god van haer <rhyme label="b" type="f" corresp="#s10:l2">alleene</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Cristus sprac al daer hij <rhyme label="a" type="m">hinc</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Wijf sieter uwen <rhyme label="b" type="f">sone</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Tot sinen iongher sente <rhyme label="a" type="m" corresp="#s11:l1">ian</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Siet daer dijn moeder <rhyme label="b" type="f" corresp="#s11:l2">schone</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">O moeder gods o reyne <rhyme label="a" type="m">maeght</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Met uwen kinderen <rhyme label="b" type="f">beyde</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Compt int dure van onser <rhyme label="a" type="m" corresp="#s12:l1">doot</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Onser ziel doen <rhyme label="b" type="f" corresp="#s12:l2">gheleyde</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
