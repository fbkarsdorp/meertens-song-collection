  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'k HEff' mijn ziele op tot den <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ik vertrouwe op u, mijn <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat nooit schaamte my <rhyme label="a" type="f" corresp="#s1:l1">onteere</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Hoedt my voor des vyands <rhyme label="b" type="m" corresp="#s1:l2">spot</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Hen, die op uw gunste <rhyme label="c" type="m">altoos</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Wachten, zal nooit schande <rhyme label="d" type="f">treffen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Maar wel die gansch <rhyme label="c" type="m" corresp="#s1:l5">trouweloos</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Handelen, en zich <rhyme label="d" type="f" corresp="#s1:l6">verheffen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Heer, leer my uw wet en <rhyme label="a" type="f">wegen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Recht begrijpen en <rhyme label="b" type="m">verstaan</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dat ik, tot uw' dienst <rhyme label="a" type="f" corresp="#s2:l1">genegen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Mag in uwe paden <rhyme label="b" type="m" corresp="#s2:l2">gaan</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Leerme uw waarheit, want gy <rhyme label="c" type="m">zijt</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Mijn Verbondts-Godt; 'k zal dan <rhyme label="d" type="f">wachten</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Op uw heil tot allen <rhyme label="c" type="m" corresp="#s2:l5">tijdt</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Dag en nacht uw wet <rhyme label="d" type="f" corresp="#s2:l6">betrachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Denk aan uw <rhyme label="a" type="f">barmhartigheden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En uw <rhyme label="b" type="m">goedertierenheit</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die gy eeuwig voor den <rhyme label="a" type="f" corresp="#s3:l1">leden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Van uw erfdeel hebt <rhyme label="b" type="m" corresp="#s3:l2">bereidt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Doch gedenk de zonden <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Mijner jeugt, mijn snoode <rhyme label="d" type="f">daaden</rhyme>;</l>
        <l id="s3:l7" met="4" type="+-">Opdat gy my, Heer, <rhyme label="c" type="m" corresp="#s3:l5">aanziet</rhyme></l>
        <l id="s3:l8" met="4" type="+-">In uw goedheit en <rhyme label="d" type="f" corresp="#s3:l6">genaden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Godt is goet, en gansch <rhyme label="a" type="f">rechtvaardig</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daarom zal hy <rhyme label="b" type="m">onderwys</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Aan den zondaar, schoon <rhyme label="a" type="f" corresp="#s4:l1">onwaardig</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Geeven, zynen naam ten <rhyme label="b" type="m" corresp="#s4:l2">prys</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Den zagtmoedigen zal <rhyme label="c" type="m">hy</rhyme></l>
        <l id="s4:l6" met="4" type="+-">In zyn recht en wegen <rhyme label="d" type="f">leiden</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">En hun leeren, hoe men <rhyme label="c" type="m" corresp="#s4:l5">vry</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Zyne deugden zal <rhyme label="d" type="f" corresp="#s4:l6">verbreiden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Al des Heeren <rhyme label="a" type="f">hemelpaden</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Zijn vol <rhyme label="b" type="m">goedertierenheit</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Louter waarheit en <rhyme label="a" type="f" corresp="#s5:l1">genaden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Den bewaarderen <rhyme label="b" type="m" corresp="#s5:l2">bereidt</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Van zyn wetten en <rhyme label="c" type="m">verbondt</rhyme>.</l>
        <l id="s5:l6" met="4" type="+-">Heer, vergeef my al myn <rhyme label="d" type="f">feilen</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Om uws naams wil, want den <rhyme label="c" type="m" corresp="#s5:l5">grondt</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Kan ik door 't getal niet <rhyme label="d" type="f" corresp="#s5:l6">peilen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wie is hy toch die den <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Vreest? Hy zal hem door zyn <rhyme label="b" type="m">licht</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Onderwyzen van zyn <rhyme label="a" type="f" corresp="#s6:l1">leere</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En den weg, voor hem <rhyme label="b" type="m" corresp="#s6:l2">gericht</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Dien hy steedts verkiezen <rhyme label="c" type="m">moet</rhyme>.</l>
        <l id="s6:l6" met="4" type="+-">Zyne ziel zal ook <rhyme label="d" type="f">vernachten</rhyme></l>
        <l id="s6:l7" met="4" type="+-">Eeuwig in het waare <rhyme label="c" type="m" corresp="#s6:l5">goedt</rhyme>;</l>
        <l id="s6:l8" met="4" type="+-">D'aarde is 't erf voor zyn <rhyme label="d" type="f" corresp="#s6:l6">geslachten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'t Groot geheim en licht des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Zyn alleen voor hun <rhyme label="b" type="m">bereidt</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Die met diep ontzagh hem <rhyme label="a" type="f" corresp="#s7:l1">eeren</rhyme>;</l>
        <l id="s7:l4" met="4" type="+-">Dien geeft hy ook 't recht <rhyme label="b" type="m" corresp="#s7:l2">bescheidt</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Van zyn heilverbondt en <rhyme label="c" type="m">goedt</rhyme>.</l>
        <l id="s7:l6" met="4" type="+-">'k Hou myn oogen steedts <rhyme label="d" type="f">geslagen</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Op den Heere, als die myn <rhyme label="c" type="m" corresp="#s7:l5">voet</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Voeren zal uit 's vyandts <rhyme label="d" type="f" corresp="#s7:l6">laagen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Wendt u tot my in <rhyme label="a" type="f">genaden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Keer naar my uw <rhyme label="b" type="m">aangezicht</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Want ik, eenzaam en <rhyme label="a" type="f" corresp="#s8:l1">beladen</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Met elenden, zoeke uw <rhyme label="b" type="m" corresp="#s8:l2">licht</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Daar de knelling van myn <rhyme label="c" type="m">hart</rhyme></l>
        <l id="s8:l6" met="4" type="+-">En myn angst zich verre <rhyme label="d" type="f">strekken</rhyme>;</l>
        <l id="s8:l7" met="4" type="+-">Voer my uit myn' noodt en <rhyme label="c" type="m" corresp="#s8:l5">smart</rhyme>;</l>
        <l id="s8:l8" met="4" type="+-">En laat my uwe <rhyme label="d" type="f" corresp="#s8:l6">almagt-dekken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Wil toch myne elende <rhyme label="a" type="f">aanschouwen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Zie myn quelling en <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Al myn zonden, die my <rhyme label="a" type="f" corresp="#s9:l1">rouwen</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Neeme uw goedheit wech om <rhyme label="b" type="m" corresp="#s9:l2">niet</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Zie, Heer, myne haters <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Myn vervolgers, die <rhyme label="d" type="f">vermeêren</rhyme>;</l>
        <l id="s9:l7" met="4" type="+-">Want zy my door 't hart <rhyme label="c" type="m" corresp="#s9:l5">verraân</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">En met wrevelhaat <rhyme label="d" type="f" corresp="#s9:l6">onteeren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Heer, bewaar myn ziel en <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Redt my uit des vyandts <rhyme label="b" type="m">magt</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">Laat my nooit met schande <rhyme label="a" type="f" corresp="#s10:l1">beeven</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Daar ik op uw bystant <rhyme label="b" type="m" corresp="#s10:l2">wacht</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Laat oprechte <rhyme label="c" type="m">vroomigheit</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">My, die u verwacht, <rhyme label="d" type="f">behoeden</rhyme>:</l>
        <l id="s10:l7" met="4" type="+-">Help uw volk, dat u <rhyme label="c" type="m" corresp="#s10:l5">verbeidt</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Israël uit <rhyme label="d" type="f" corresp="#s10:l6">tegenspoeden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
