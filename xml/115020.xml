  <author>Guilielmus Bolognino</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SUyver Maeghden, trouwe Bruydts van den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Met een vaste liefd' aen hem <rhyme label="b" type="m">verplicht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Neemt in danck dit Maeghden liedt, tot u <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van de suyver Muse u <rhyme label="b" type="m" corresp="#s1:l2">ghedicht</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">O enghelsch gheslacht! o Bruydegoms <rhyme label="c" type="m">vreucht</rhyme>!</l>
        <l id="s1:l6" met="2" type="-+">Daer boven // seer <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Godts gheesten u reyn <rhyme label="c" type="m" corresp="#s1:l5">deught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die in 't lichaem sien u hem volghen <rhyme label="a" type="m">naer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Sien hun puerheydt u betrachten <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Rusten sy daerom in u sien oock <rhyme label="a" type="m" corresp="#s2:l1">claer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Uwen Bruygom met sijn <rhyme label="b" type="m" corresp="#s2:l2">minne-vier</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">O enghelsch gheslacht! o Bruydegoms <rhyme label="c" type="m">vreucht</rhyme>!</l>
        <l id="s2:l6" met="2" type="-+">Daer boven // seer <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Godts gheesten u reyn <rhyme label="c" type="m" corresp="#s2:l5">deught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer sy hooren aen het Lam een nieuw <rhyme label="a" type="m">liedt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Singhen all' de Maeghden met <rhyme label="b" type="m">jolijt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die verheught van sijnen glans in 't <rhyme label="a" type="m" corresp="#s3:l1">gheniet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Volghen dat allom, daer in <rhyme label="b" type="m" corresp="#s3:l2">verblijdt</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">O enghelsch gheslacht! o Bruydegoms <rhyme label="c" type="m">vreucht</rhyme>!</l>
        <l id="s3:l6" met="2" type="-+">Daer boven // seer <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Godts gheesten u reyn <rhyme label="c" type="m" corresp="#s3:l5">deught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daer sy d'alderschoonste croon sien op 't <rhyme label="a" type="m">hooft</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Stralen van de Maeghden <rhyme label="b" type="m">eeuwelijck</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Waeckt, o Maeght, om niet te zijn oot <rhyme label="a" type="m" corresp="#s4:l1">berooft</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Van die deught, de ziel die maeckt soo <rhyme label="b" type="m" corresp="#s4:l2">rijck</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">O enghelsch gheslacht! o Bruydegoms <rhyme label="c" type="m">vreucht</rhyme>!</l>
        <l id="s4:l6" met="2" type="-+">Daer boven // seer <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Godts gheesten u reyn <rhyme label="c" type="m" corresp="#s4:l5">deught</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Kent gheen schoonheydt anders oot als de <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Daer ghy aen gheschoncken hebt u <rhyme label="b" type="m">hert</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Aller ander minnaers spraeck u zy <rhyme label="a" type="m" corresp="#s5:l1">pijn</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Schouwt wel neerstigh allen 's wereldts <rhyme label="b" type="m" corresp="#s5:l2">pert</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">O enghelsch gheslacht! o Bruydegoms <rhyme label="c" type="m">vreucht</rhyme>!</l>
        <l id="s5:l6" met="2" type="-+">Daer boven // seer <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Godts gheesten u reyn <rhyme label="c" type="m" corresp="#s5:l5">deught</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Houdt u eenigh met u Lief, spreeckt hem <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Meer en meer met hem wordt altijt <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">In sijn liefde voorts altijdt tracht te <rhyme label="a" type="m" corresp="#s6:l1">gaen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Heel met hem vereenight, stadigh <rhyme label="b" type="m" corresp="#s6:l2">bly</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">O enghelsch gheslacht! o Bruydegoms <rhyme label="c" type="m">vreucht</rhyme>!</l>
        <l id="s6:l6" met="2" type="-+">Daer boven // seer <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Godts gheesten u reyn <rhyme label="c" type="m" corresp="#s6:l5">deught</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Vruchtbaer oock den Bruygom zijt Christi <rhyme label="a" type="m">bruydt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Zijt van sijnen Gheest altijdt <rhyme label="b" type="m">bevrught</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Kleyn, ootmoedigh zijt, altijdt gaet u <rhyme label="a" type="m" corresp="#s7:l1">uyt</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Godt neemt in een nedrigh hert <rhyme label="b" type="m" corresp="#s7:l2">ghenucht</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">O enghelsch gheslacht! o Bruydegoms <rhyme label="c" type="m">vreucht</rhyme>!</l>
        <l id="s7:l6" met="2" type="-+">Daer boven // seer <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Godts gheesten u reyn <rhyme label="c" type="m" corresp="#s7:l5">deught</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Oeffent u oock in 't ghebedt stadigh <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Dat ghemeyn met Godt maeckt in dit <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Strijdt 'nen goeden strijdt, ghetrouw zijt den <rhyme label="a" type="m" corresp="#s8:l1">Heer</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Die u t' allen eeuwen croonen <rhyme label="b" type="m" corresp="#s8:l2">sal</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">O enghelsch gheslacht! o Bruydegoms <rhyme label="c" type="m">vreucht</rhyme>!</l>
        <l id="s8:l6" met="2" type="-+">Daer boven // seer <rhyme label="d" type="f">loven</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Godts gheesten u reyn <rhyme label="c" type="m" corresp="#s8:l5">deught</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
