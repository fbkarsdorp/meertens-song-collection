    <melody>Het stond een moeder rein</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt stont een Moeder <rhyme label="a" type="f">reene</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Neffens dat cruycen <rhyme label="b" type="m">hout</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Seer druckelijck in <rhyme label="a" type="f" corresp="#s1:l1">weene</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In liefde niet <rhyme label="b" type="m" corresp="#s1:l2">verkout</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Met pijne <rhyme label="b" type="m" corresp="#s1:l2">menichfout</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Sach sy haer Soon <rhyme label="c" type="m">eerbaer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hanghen, als puer reyn <rhyme label="b" type="m" corresp="#s1:l2">gout</rhyme></l>
        <l id="s1:l8" met="3" type="-+">In’t vier des lijdens <rhyme label="c" type="m" corresp="#s1:l6">swaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wiens melijdend’ <rhyme label="a" type="f">herte</rhyme></l>
        <l id="s2:l2" met="3" type="-+">’t Sweert druckelijck <rhyme label="b" type="m">doorsneet</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Och hoe was dan in <rhyme label="a" type="f" corresp="#s2:l1">smerte</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Bedruckt, benaut, <rhyme label="b" type="m" corresp="#s2:l2">besweet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Godts moeder, als groot <rhyme label="b" type="m" corresp="#s2:l2">leet</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Haer Soon <rhyme label="c" type="m">ghenedijt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Wert aenghedaen seer <rhyme label="b" type="m" corresp="#s2:l2">wreedt</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">Voor haer noyt droeuer <rhyme label="c" type="m" corresp="#s2:l6">tijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wie isser doch in <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die niet bedroeft sou <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat hy saghe ten <rhyme label="a" type="f" corresp="#s3:l1">desen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Christi Moeder <rhyme label="b" type="m" corresp="#s3:l2">divijn</rhyme></l>
        <l id="s3:l5" met="3" type="-+">In sulck’ een swaere <rhyme label="b" type="m" corresp="#s3:l2">pijn</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wien sout aen hebben <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die saegh’ op elck <rhyme label="b" type="m" corresp="#s3:l2">termijn</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Haer lijden en <rhyme label="c" type="m" corresp="#s3:l6">verdriet</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Om de schult en <rhyme label="a" type="f">misdaden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van al sijn volck <rhyme label="b" type="m">onvroet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sach sy met druck <rhyme label="a" type="f" corresp="#s4:l1">beladen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van hoofde tot den <rhyme label="b" type="m" corresp="#s4:l2">voet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Iesum deurwont, <rhyme label="b" type="m" corresp="#s4:l2">bebloet</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Sy sach in s’drucx <rhyme label="c" type="m">foreest</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Steruen haer Sone <rhyme label="b" type="m" corresp="#s4:l2">soet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Als hy gaf sijnen <rhyme label="c" type="m" corresp="#s4:l6">gheest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O fonteyne der <rhyme label="a" type="f">liefde</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Moeder ghetrouwe, <rhyme label="b" type="m">iont</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dat ick als de <rhyme label="a" type="f" corresp="#s5:l1">gheriefde</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Mach inder herten <rhyme label="b" type="m" corresp="#s5:l2">gront</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Smaken de kracht <rhyme label="b" type="m" corresp="#s5:l2">terstont</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Van sijn lijden en <rhyme label="c" type="m">gru</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Dat ich alsoo <rhyme label="b" type="m" corresp="#s5:l2">deurwont</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Mach weenen hier met <rhyme label="c" type="m" corresp="#s5:l6">u</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doet toch mijn herte <rhyme label="a" type="f">branden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Tot Godt nacht ende <rhyme label="b" type="m">dach</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Bindt met der liefden <rhyme label="a" type="f" corresp="#s6:l1">banden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In t’hert’ al sijn <rhyme label="b" type="m" corresp="#s6:l2">verdrach</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dat ick behaghen <rhyme label="b" type="m" corresp="#s6:l2">mach</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Hem soo doorwont voor <rhyme label="c" type="m">my</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Sijn pijnen met <rhyme label="b" type="m" corresp="#s6:l2">beklach</rhyme></l>
        <l id="s6:l8" met="3" type="-+">In my bedeelt doch <rhyme label="c" type="m" corresp="#s6:l6">ghy</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Beweecht mijn herte <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Soo langh’ ick leue <rhyme label="b" type="m">kranck</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Om met v te <rhyme label="a" type="f" corresp="#s7:l1">versinnen</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Des cruyce lijden <rhyme label="b" type="m" corresp="#s7:l2">stranck</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">T’is doch al mijn <rhyme label="b" type="m" corresp="#s7:l2">verlanck</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Met een druckich <rhyme label="c" type="m">vermaen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Met v nemen den <rhyme label="b" type="m" corresp="#s7:l2">ganck</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Om neffens t’cruys te <rhyme label="c" type="m" corresp="#s7:l6">staen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maecht der maechden <rhyme label="a" type="f">verheuen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Doet my hier Christus <rhyme label="b" type="m">doot</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Sijn passi’, bitter <rhyme label="a" type="f" corresp="#s8:l1">leuen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Draghen in’t herte <rhyme label="b" type="m" corresp="#s8:l2">bloot</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">T’zy in vreucht, oft in <rhyme label="b" type="m" corresp="#s8:l2">noot</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Deur een liefd’ <rhyme label="c" type="m">onbevleckt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Ghedincken al <rhyme label="b" type="m" corresp="#s8:l2">d’aenstoot</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Van Godt mensche <rhyme label="c" type="m" corresp="#s8:l6">perfect</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Maeckt my deur v doch <rhyme label="a" type="f">vierich</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Moeder en maecht <rhyme label="b" type="m">bekent</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Bevrijt my van’t <rhyme label="a" type="f" corresp="#s9:l1">dangierich</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Vier, en d’eeuwich <rhyme label="b" type="m" corresp="#s9:l2">torment</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Deur Christus cruyce <rhyme label="b" type="m" corresp="#s9:l2">wendt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Van my t’sondich <rhyme label="c" type="m">ghetreur</rhyme>:</l>
        <l id="s9:l7" met="3" type="-+">Iont in mijn lesten <rhyme label="b" type="m" corresp="#s9:l2">endt</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Des blijschaps soeten <rhyme label="c" type="m" corresp="#s9:l6">geur</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
