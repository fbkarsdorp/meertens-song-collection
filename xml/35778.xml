    <melody>Ik ging nog gisteravond zo heimelijk een gang</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Spiegel der <rhyme label="a" type="f">Doctooren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Bruno, vermaert <rhyme label="b" type="m">Doctoor</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Tot Ceulen is <rhyme label="a" type="f" corresp="#s1:l1">gebooren</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Van zijn jeught 't deughden <rhyme label="b" type="m" corresp="#s1:l2">spoor</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Heeft heel <rhyme label="c" type="f">betrede</rhyme>.</l>
        <l id="s1:l6" met="2" type="-+">Verfoeyt, <rhyme label="d" type="m">versaeckt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Al 's Werelts <rhyme label="c" type="f" corresp="#s1:l5">ydelhede</rhyme>;</l>
        <l id="s1:l8" met="3" type="-+">In s' Hemels hem <rhyme label="d" type="m" corresp="#s1:l6">vermaeckt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Tot Parijs soo <rhyme label="a" type="f">studeerde</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat hy de wijste <rhyme label="b" type="m">wordt</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">De wijste Mannen <rhyme label="a" type="f" corresp="#s2:l1">leerde</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Sijn lenden houdt <rhyme label="b" type="m" corresp="#s2:l2">omgort</rhyme>;</l>
        <l id="s2:l5" met="2" type="-+">Zijn hart dat <rhyme label="c" type="f">brande</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Tot Godes <rhyme label="d" type="m">eer</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Verlichte veel <rhyme label="c" type="f" corresp="#s2:l5">verstande</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Met zijn leven en <rhyme label="d" type="m" corresp="#s2:l6">leer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sint' Bruno met ses <rhyme label="a" type="f">treden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Na de <rhyme label="b" type="m">Carthuyser-bergh</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Door 't vasten, <rhyme label="a" type="f" corresp="#s3:l1">hayre-kleden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Temmen haer vleys tot <rhyme label="b" type="m" corresp="#s3:l2">Mergh</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">By nacht en <rhyme label="c" type="f">dagen</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Loven zy <rhyme label="d" type="m">Godt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Geen vleys komt in haer <rhyme label="c" type="f" corresp="#s3:l5">magen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Aen haer mont hanght een <rhyme label="d" type="m" corresp="#s3:l6">slot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sinte' Bruno volght de <rhyme label="a" type="f">paden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van Sinte Jan <rhyme label="b" type="m">Baptist</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Leest na Godts wet en <rhyme label="a" type="f" corresp="#s4:l1">raden</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Geen tijdt onnut <rhyme label="b" type="m" corresp="#s4:l2">verquist</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Niet aerdts <rhyme label="c" type="f">gevonden</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Wort in de'es <rhyme label="d" type="m">Sant</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Schout al dat ruyckt na <rhyme label="c" type="f" corresp="#s4:l5">sonden</rhyme>;</l>
        <l id="s4:l8" met="3" type="-+">Godt dient met tongh en <rhyme label="d" type="m" corresp="#s4:l6">handt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Satans doorens en <rhyme label="a" type="f">lagen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Niet krencken dese <rhyme label="b" type="m">roos</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Hy roept by nacht en <rhyme label="a" type="f" corresp="#s5:l1">dagen</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Ã” Goetheyt! Goetheyt <rhyme label="b" type="m" corresp="#s5:l2">Goods</rhyme>!</l>
        <l id="s5:l5" met="2" type="-+">Want Christus <rhyme label="c" type="f">lijden</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Liefde en <rhyme label="d" type="m">doot</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Overdenckt 't alle <rhyme label="c" type="f" corresp="#s5:l5">tijden</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Met mede lijde <rhyme label="d" type="m" corresp="#s5:l6">groot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Den Graef Rogier <rhyme label="a" type="f">bevrijde</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Van doodelijck <rhyme label="b" type="m">verraet</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Bisdommen in zijn <rhyme label="a" type="f" corresp="#s6:l1">tijde</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ontloopt en <rhyme label="b" type="m" corresp="#s6:l2">wederstaet</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Zijn ziel <rhyme label="c" type="f">verheve</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Tot 's Hemels <rhyme label="d" type="m">pleyn</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">By 't Lijck op d'aerdt <rhyme label="c" type="f" corresp="#s6:l5">gebleven</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Springht 't wonderbaer <rhyme label="d" type="m" corresp="#s6:l6">fonteytn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Houdt oordeel Gods voor <rhyme label="a" type="f">oogen</rhyme>;</l>
        <l id="s7:l2" met="3" type="-+">Geveynstheyt haet en <rhyme label="b" type="m">schout</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Geen sonden wilt <rhyme label="a" type="f" corresp="#s7:l1">gedoogen</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">In d' eenigheyt u <rhyme label="b" type="m" corresp="#s7:l2">houdt</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">U Vleesch te <rhyme label="c" type="f">temme</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Weest niet <rhyme label="d" type="m">vervaert</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">U lust bedwinght en <rhyme label="c" type="f" corresp="#s7:l5">stemme</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Soo wort u ziel <rhyme label="d" type="m" corresp="#s7:l6">bewaert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Sint' Bruno! Met uw' <rhyme label="a" type="f">Broeders</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Carthuysers, in 't <rhyme label="b" type="m">gemeen</rhyme>!</l>
        <l id="s8:l3" met="3" type="-+">Door uw' voorspraeck, <rhyme label="a" type="f" corresp="#s8:l1">behoeders</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Weest van mijn ziel en <rhyme label="b" type="m" corresp="#s8:l2">le'en</rhyme>.</l>
        <l id="s8:l5" met="2" type="-+">Krijght daer en <rhyme label="c" type="f">boven</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Van Godes <rhyme label="d" type="m">Zoon</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Een plaets in 's Hemels <rhyme label="c" type="f" corresp="#s8:l5">hoven</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Voor mijn, waerde <rhyme label="d" type="m" corresp="#s8:l6">Patroon</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
