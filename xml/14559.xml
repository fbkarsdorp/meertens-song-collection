    </tags>
    <melody>Ik heb de groene straten</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn Enghel werdt <rhyme label="a" type="f">ghesonden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Godt den Heere <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Tot een die lagh in <rhyme label="a" type="f" corresp="#s1:l1">sonden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En swom in 's wereldts <rhyme label="b" type="m" corresp="#s1:l2">vloedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sondaer, ghy meught wel <rhyme label="a" type="f">beven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat ghy in sonden <rhyme label="b" type="m">zijt</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Den Heer' sal u <rhyme label="a" type="f" corresp="#s2:l1">begheven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En korten uwen <rhyme label="b" type="m" corresp="#s2:l2">tijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Sondaer lagh <rhyme label="a" type="f">alleene</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hy wierdt verschrickt <rhyme label="b" type="m">voorwaer</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Seer ras was hy te <rhyme label="a" type="f" corresp="#s3:l1">beene</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Benouwt soo stondt hy <rhyme label="b" type="m" corresp="#s3:l2">daer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt u quaet leven <rhyme label="a" type="f">laten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">De deughd wilt nemen <rhyme label="b" type="m">aen</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Neemt Godt tot uwer <rhyme label="a" type="f" corresp="#s4:l1">baten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Eer u de doodt komt <rhyme label="b" type="m" corresp="#s4:l2">slaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sou my de doodt <rhyme label="a" type="f">bevanghen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In mijn quaet leven <rhyme label="b" type="m">groot</rhyme>?</l>
        <l id="s5:l3" met="3" type="-+">Och doetse wat <rhyme label="a" type="f" corresp="#s5:l1">verlanghen</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Ick ben van deughden <rhyme label="b" type="m" corresp="#s5:l2">bloot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick en sal u niet <rhyme label="a" type="f">laten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Stelt u in goeden <rhyme label="b" type="m">staet</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Mijn woorden wilt wel <rhyme label="a" type="f" corresp="#s6:l1">vaten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Eer ghy ter aerden <rhyme label="b" type="m" corresp="#s6:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wat helpt het <rhyme label="a" type="f">triumpheeren</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als ick soe sterven <rhyme label="b" type="m">moet</rhyme>?</l>
        <l id="s7:l3" met="3" type="-+">Ick wilt al <rhyme label="a" type="f" corresp="#s7:l1">renonceeren</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En soecken 't eeuwigh <rhyme label="b" type="m" corresp="#s7:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Och mijn beminde <rhyme label="a" type="f">ziele</rhyme></l>
        <l id="s8:l2" met="3" type="-+">En zijt niet <rhyme label="b" type="m">wanckelbaer</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Dat u niet en <rhyme label="a" type="f" corresp="#s8:l1">verniele</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Het pack der sonden <rhyme label="b" type="m" corresp="#s8:l2">swaer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Adieu o werelt <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ick neme mijnen <rhyme label="b" type="m">gangh</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Tot Christus <rhyme label="a" type="f" corresp="#s9:l1">doornen-kroone</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En tot dat Cruyce <rhyme label="b" type="m" corresp="#s9:l2">langh</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
