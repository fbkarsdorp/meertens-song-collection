  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">EEn <rhyme label="a" type="m">overgroot</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wonder der <rhyme label="b" type="f">wonderheden</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Heeft voor sijne <rhyme label="a" type="m" corresp="#s1:l1">dood</rhyme></l>
        <l id="s1:l4" met="3" type="-+">D' Heer Jesus <rhyme label="c" type="m">uytgevrocht</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Matthaei <rhyme label="a" type="m" corresp="#s1:l1">nood</rhyme></l>
        <l id="s1:l6" met="3" type="-+">(Wiens ziel was <rhyme label="b" type="f" corresp="#s1:l2">over-le-den</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Gantsch van deughd <rhyme label="a" type="m" corresp="#s1:l1">ontbloodt</rhyme>)</l>
        <l id="s1:l8" met="3" type="-+">Heeft Hem daer toe <rhyme label="c" type="m" corresp="#s1:l4">gebrocht</rhyme>.</l>
        <l id="s1:l9" met="3" type="+-">Want het Hem <rhyme label="a" type="m" corresp="#s1:l1">verdroot</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Dat Levi niet en <rhyme label="c" type="m" corresp="#s1:l4">socht</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Dan geld en goet van de-ser <rhyme label="d" type="m">aerd'</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">Het welck Hy hiel in groote <rhyme label="d" type="m" corresp="#s1:l11">waerd</rhyme>,</l>
        <l id="s1:l13" met="3" type="+-">Meerder dan de <rhyme label="e" type="m">deughd</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">Die 't hart alleen <rhyme label="e" type="m" corresp="#s1:l13">verheught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Siet dan nu <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wat dat uyt liefd' <rhyme label="b" type="f">gedreven</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Tot dien <rhyme label="a" type="m" corresp="#s2:l1">Publicaen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gedaen heeft onsen <rhyme label="c" type="m">Heer</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Hy is <rhyme label="a" type="m" corresp="#s2:l1">gegaen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Om dat Hy soude <rhyme label="b" type="f" corresp="#s2:l2">geven</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Hem een goet <rhyme label="a" type="m" corresp="#s2:l1">vermaen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En eene trouwe <rhyme label="c" type="m" corresp="#s2:l4">leer</rhyme>.</l>
        <l id="s2:l9" met="3" type="+-">Uyt des werelts <rhyme label="a" type="m" corresp="#s2:l1">baen</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Riep Hy Hem vriend'lijck <rhyme label="c" type="m" corresp="#s2:l4">seer</rhyme>:</l>
        <l id="s2:l11" met="4" type="+-">Hy sey, Matthaee volght my <rhyme label="d" type="m">na</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">Niet anders; En hy volghden <rhyme label="d" type="m" corresp="#s2:l11">dra</rhyme>;</l>
        <l id="s2:l13" met="3" type="+-">En op <rhyme label="e" type="m">staende-voet</rhyme></l>
        <l id="s2:l14" met="3" type="-+">Verliet Hy al sijn <rhyme label="e" type="m" corresp="#s2:l13">goet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Hy de'e noch <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Want als Hy wilden <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Soo heeft Hy met <rhyme label="a" type="m" corresp="#s3:l1">eer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">De sijn Ã  Dieu <rhyme label="c" type="m">geseyt</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Aen onsen <rhyme label="a" type="m" corresp="#s3:l1">Heer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">De'e Hy een Mael <rhyme label="b" type="f" corresp="#s3:l2">bereyden</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Die met een groot <rhyme label="a" type="m" corresp="#s3:l1">begeer</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Sich daer toe heeft <rhyme label="c" type="m" corresp="#s3:l4">bereydt</rhyme>.</l>
        <l id="s3:l9" met="3" type="+-">Ende, siet! heel <rhyme label="a" type="m" corresp="#s3:l1">veer</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Is dese faem <rhyme label="c" type="m" corresp="#s3:l4">verspreydt</rhyme>:</l>
        <l id="s3:l11" met="4" type="+-">Waerom daer veel gekomen <rhyme label="d" type="m">zijn</rhyme></l>
        <l id="s3:l12" met="4" type="-+">Tot desen grooten <rhyme label="d" type="m" corresp="#s3:l11">Medicijn</rhyme>,</l>
        <l id="s3:l13" met="3" type="+-">Die Matthaevm <rhyme label="e" type="m">had</rhyme></l>
        <l id="s3:l14" met="3" type="-+">Gebrocht op 't rechte <rhyme label="e" type="m" corresp="#s3:l13">pad</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Hier door <rhyme label="a" type="m">bekeert</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Zijn noch veel and're <rhyme label="b" type="f">menschen</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Groot'lijcx is <rhyme label="a" type="m" corresp="#s4:l1">vermeert</rhyme></l>
        <l id="s4:l4" met="3" type="-+">De glory van ons <rhyme label="c" type="m">God</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Die ons <rhyme label="a" type="m" corresp="#s4:l1">begeert</rhyme></l>
        <l id="s4:l6" met="3" type="-+">(Waer na ons staet te <rhyme label="b" type="f" corresp="#s4:l2">wenschen</rhyme>)</l>
        <l id="s4:l7" met="3" type="+-">T' geven 's Hemels <rhyme label="a" type="m" corresp="#s4:l1">lot</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">'t Welck Hy die geen <rhyme label="c" type="m" corresp="#s4:l4">vereert</rhyme></l>
        <l id="s4:l9" met="3" type="+-">Die sijn soet <rhyme label="a" type="m" corresp="#s4:l1">gebod</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Volbrengt, en sich <rhyme label="c" type="m" corresp="#s4:l4">verne'ert</rhyme>.</l>
        <l id="s4:l11" met="4" type="+-">Dit was Mattaei goede <rhyme label="d" type="m">wensch</rhyme>,</l>
        <l id="s4:l12" met="4" type="-+">Daerom Hy uyt treckt d' ouden <rhyme label="d" type="m" corresp="#s4:l11">mensch</rhyme>,</l>
        <l id="s4:l13" met="3" type="+-">Hy volght Jesus <rhyme label="e" type="m">raed</rhyme>,</l>
        <l id="s4:l14" met="3" type="-+">De werelt Hy <rhyme label="e" type="m" corresp="#s4:l13">verlaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Hy volghden <rhyme label="a" type="m">na</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ja is oock by <rhyme label="b" type="f">gebleven</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Die aen Hem <rhyme label="a" type="m" corresp="#s5:l1">gena</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Vergunt had <rhyme label="c" type="m">mildelijck</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Goe' ende <rhyme label="a" type="m" corresp="#s5:l1">qua'e</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Verwonderden sijn <rhyme label="b" type="f" corresp="#s5:l2">leven</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Hoe dat Hy soo <rhyme label="a" type="m" corresp="#s5:l1">dra</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Verliet het goude <rhyme label="c" type="m" corresp="#s5:l4">slijck</rhyme>:</l>
        <l id="s5:l9" met="3" type="+-">'t Welcken vroegh en <rhyme label="a" type="m" corresp="#s5:l1">spa</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Elck een soeckt <rhyme label="c" type="m" corresp="#s5:l4">neerstelijck</rhyme>.</l>
        <l id="s5:l11" met="4" type="+-">,, Hier siet ghy gaen dan een <rhyme label="d" type="m">Kameel</rhyme></l>
        <l id="s5:l12" met="4" type="-+">,, Door 't naelden oogh, 't gebeurt niet <rhyme label="d" type="m" corresp="#s5:l11">veel</rhyme>:</l>
        <l id="s5:l13" met="3" type="+-">Sint Matthevs doet <rhyme label="e" type="m">dit</rhyme>,</l>
        <l id="s5:l14" met="3" type="-+">Die hoogh by God nu <rhyme label="e" type="m" corresp="#s5:l13">sit</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Het valt seer <rhyme label="a" type="m">swaer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Voor rijcke luy te <rhyme label="b" type="f">komen</rhyme></l>
        <l id="s6:l3" met="3" type="+-">Tot der Heyl'gen <rhyme label="a" type="m" corresp="#s6:l1">schaer</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die zijn in 's Hemels <rhyme label="c" type="m">hof</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Dit heeft <rhyme label="a" type="m" corresp="#s6:l1">voorwaer</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Een langen tijd <rhyme label="b" type="f" corresp="#s6:l2">vernomen</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Desen <rhyme label="a" type="m" corresp="#s6:l1">Tollenaer</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Die sondichden seer <rhyme label="c" type="m" corresp="#s6:l4">grof</rhyme>.</l>
        <l id="s6:l9" met="3" type="+-">Dit wordt oock <rhyme label="a" type="m" corresp="#s6:l1">gewaer</rhyme></l>
        <l id="s6:l10" met="3" type="-+">All' die mindt 't aerdsche <rhyme label="c" type="m" corresp="#s6:l4">stof</rhyme>:</l>
        <l id="s6:l11" met="4" type="+-">Want rijckdom groot beletsel <rhyme label="d" type="m">stelt</rhyme></l>
        <l id="s6:l12" met="4" type="-+">Dat yemand komt in 's Hemels <rhyme label="d" type="m" corresp="#s6:l11">veld</rhyme>,</l>
        <l id="s6:l13" met="3" type="+-">Soo heeft <rhyme label="e" type="m">geleert</rhyme>,</l>
        <l id="s6:l14" met="3" type="-+">Die Levi heeft <rhyme label="e" type="m" corresp="#s6:l13">bekeert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">O heyl'gen <rhyme label="a" type="m">Held</rhyme></l>
        <l id="s7:l2" met="3" type="-+">MatthaeÃ«! die <rhyme label="b" type="f">verlaten</rhyme></l>
        <l id="s7:l3" met="3" type="+-">Hebt den Tol, en 't <rhyme label="a" type="m" corresp="#s7:l1">geld</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ja all' u goet met <rhyme label="c" type="m">een</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">Die zijt <rhyme label="a" type="m" corresp="#s7:l1">verzelt</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Met God in 's Hemels <rhyme label="b" type="f" corresp="#s7:l2">straten</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">(Soo de Kerck ons <rhyme label="a" type="m" corresp="#s7:l1">meldt</rhyme>,)</l>
        <l id="s7:l8" met="3" type="-+">Wien trouw Ghy hebt <rhyme label="c" type="m" corresp="#s7:l4">gedient</rhyme>.</l>
        <l id="s7:l9" met="3" type="+-">Ick kom met <rhyme label="a" type="m" corresp="#s7:l1">geweld</rhyme></l>
        <l id="s7:l10" met="3" type="-+">U bidden als mijn <rhyme label="c" type="m" corresp="#s7:l4">vriend</rhyme>:</l>
        <l id="s7:l11" met="4" type="+-">Verkrijcht dat ick van deuchden <rhyme label="d" type="m">rijck</rhyme>,</l>
        <l id="s7:l12" met="4" type="-+">Veracht, vertree dit aerdsche <rhyme label="d" type="m" corresp="#s7:l11">slijck</rhyme>,</l>
        <l id="s7:l13" met="3" type="+-">'t Welcken meenich <rhyme label="e" type="m">man</rhyme></l>
        <l id="s7:l14" met="3" type="-+">Den helschen smart brenght <rhyme label="e" type="m" corresp="#s7:l13">an</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">O <rhyme label="a" type="m">Publicaen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">MatthaeÃ« hoogh <rhyme label="b" type="f">verheven</rhyme>!</l>
        <l id="s8:l3" met="3" type="+-">Ick met sond' <rhyme label="a" type="m" corresp="#s8:l1">bela'en</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Versoeck uw' starcke <rhyme label="c" type="m">hand</rhyme>:</l>
        <l id="s8:l5" met="2" type="-+">Ick ben <rhyme label="a" type="m" corresp="#s8:l1">begaen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Al vry wat in mijn <rhyme label="b" type="f" corresp="#s8:l2">leven</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">Mits ick Christi <rhyme label="a" type="m" corresp="#s8:l1">Ra'en</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Geworpen heb aen <rhyme label="c" type="m" corresp="#s8:l4">kant</rhyme>.</l>
        <l id="s8:l9" met="3" type="+-">Leert my gaen Goods <rhyme label="a" type="m" corresp="#s8:l1">pa'en</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Op dat ick niet en <rhyme label="c" type="m" corresp="#s8:l4">brand'</rhyme>.</l>
        <l id="s8:l11" met="4" type="+-">Verkrijcht dat ick van desen <rhyme label="d" type="m">dach</rhyme></l>
        <l id="s8:l12" met="4" type="-+">Mijn leven beter schicken <rhyme label="d" type="m" corresp="#s8:l11">mach</rhyme>.</l>
        <l id="s8:l13" met="3" type="+-">Vaert MatthaeÃ«! <rhyme label="e" type="m">wel</rhyme></l>
        <l id="s8:l14" met="3" type="-+">Bevrijt my van de <rhyme label="e" type="m" corresp="#s8:l13">Hell'</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
