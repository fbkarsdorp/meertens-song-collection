<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186880</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody>Jezus waarheid weg en leven</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Laet u niet <rhyme label="a" type="f">verbaazen</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Sa, Matroos, houd <rhyme label="b" type="m">moed</rhyme>!</l>
        <l id="s1:l3" met="3" type="+-">Is de Brit aan 't <rhyme label="a" type="f" corresp="#s1:l1">raazen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">'t Oude Hollandsch <rhyme label="b" type="m" corresp="#s1:l2">bloed</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Zal door 't dondren van 't <rhyme label="c" type="m">Canon</rhyme>.</l>
        <l id="s1:l6" met="4" type="+-">Hem doen zien wat hy <rhyme label="c" type="m" corresp="#s1:l5">begon</rhyme>.</l>
        <l id="s1:l7" met="2" type="-+">Vivat <rhyme label="d" type="m">Hoezéé</rhyme>!</l>
        <l id="s1:l8" met="3" type="-+">Vivat Matroosjes <rhyme label="d" type="m" corresp="#s1:l7">Hoezée</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Hoort ge hoe <rhyme label="a" type="f">Volbergen</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">'t Eritsche Volk <rhyme label="b" type="m">begroet</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Keer dan ook het <rhyme label="a" type="f" corresp="#s2:l1">tergen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van uw <rhyme label="b" type="m" corresp="#s2:l2">heldenmoed</rhyme>!</l>
        <l id="s2:l5" met="4" type="+-">Doen den Brit door 't Scheeps <rhyme label="c" type="m">Canon</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Zien, wat by zo valsch <rhyme label="c" type="m" corresp="#s2:l5">begon</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Vivat! <rhyme label="d" type="m">Hoezée</rhyme>!</l>
        <l id="s2:l8" met="3" type="-+">Vivat Matroosjes, <rhyme label="d" type="m" corresp="#s2:l7">Hoezée</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Schoon die Held moest <rhyme label="a" type="f">stryken</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Voor hun <rhyme label="b" type="m">overmagt</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Hy gaf egter <rhyme label="a" type="f" corresp="#s3:l1">blyken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van zyn moed en <rhyme label="b" type="m" corresp="#s3:l2">kragt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Schip voor Schip had zyn <rhyme label="c" type="m">Canon</rhyme></l>
        <l id="s3:l6" met="4" type="+-">'t Schuim doen zien wat het <rhyme label="c" type="m" corresp="#s3:l5">begon</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Vivat! <rhyme label="d" type="m">Hoezée</rhyme>!</l>
        <l id="s3:l8" met="3" type="-+">Vivat Matroosjes, <rhyme label="d" type="m" corresp="#s3:l7">Hoezée</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
