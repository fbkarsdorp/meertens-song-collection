  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">DAt van 's Hemels <rhyme label="a" type="f">Salen</rhyme></l>
        <l id="s1:l2" met="3" type="+-">U vier neêr komt <rhyme label="a" type="f" corresp="#s1:l1">dalen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Dat 't myn ziel <rhyme label="b" type="m">verwint</rhyme></l>
        <l id="s1:l4" met="3" type="+-">En myn ziel <rhyme label="b" type="m" corresp="#s1:l3">verslint</rhyme>,</l>
        <l id="s1:l5" met="1" type="-+">O <rhyme label="c" type="f">Jesu</rhyme>’</l>
        <l id="s1:l6" met="1" type="-+">O <rhyme label="c" type="f" corresp="#s1:l5">Jesu</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Myn hert en myn <rhyme label="d" type="f">sinnen</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Die verlanghen <rhyme label="e" type="m">seer</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Naer uw' lieve <rhyme label="d" type="f" corresp="#s1:l7">minne</rhyme></l>
        <l id="s1:l10" met="3" type="+-">Minnelycken <rhyme label="e" type="m" corresp="#s1:l8">Heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Heer dat 't u <rhyme label="a" type="f">beliefde</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Een strael van uw' <rhyme label="a" type="f" corresp="#s2:l1">liefde</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Op myn hert te <rhyme label="b" type="m">slaen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">'t Soud' haest branden <rhyme label="b" type="m" corresp="#s2:l3">gaen</rhyme>,</l>
        <l id="s2:l5" met="1" type="-+">Uw' <rhyme label="c" type="f">vieren</rhyme>’</l>
        <l id="s2:l6" met="1" type="-+"><rhyme label="c" type="f" corresp="#s2:l5">Vercieren</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">En die lieve <rhyme label="d" type="f">schichten</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Van uw' soete <rhyme label="e" type="m">Handt</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Schieten myn <rhyme label="d" type="f" corresp="#s2:l7">ghevrichten</rhyme></l>
        <l id="s2:l10" met="3" type="+-">En myn hert in <rhyme label="e" type="m" corresp="#s2:l8">brandt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">In liefden <rhyme label="a" type="f">verdwynen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Zyn de soetste <rhyme label="a" type="f" corresp="#s3:l1">pynen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Liefden in het <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Is een lieve <rhyme label="b" type="m" corresp="#s3:l3">smert</rhyme>,</l>
        <l id="s3:l5" met="1" type="-+">Myn <rhyme label="c" type="f">sinnen</rhyme>’</l>
        <l id="s3:l6" met="1" type="-+"><rhyme label="c" type="f" corresp="#s3:l5">Beminnen</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Sulcken lieve <rhyme label="d" type="f">Wonden</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Soo vol van <rhyme label="e" type="m">playsier</rhyme></l>
        <l id="s3:l9" met="3" type="+-">Myn ziel is <rhyme label="d" type="f" corresp="#s3:l7">verslonden</rhyme></l>
        <l id="s3:l10" met="3" type="+-">In uw <rhyme label="e" type="m" corresp="#s3:l8">minne-vier</rhyme>.</l>
      </lg>
    </lg>
  </text>
