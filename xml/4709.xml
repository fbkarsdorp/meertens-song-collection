  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">IEsu! laet mijn ziel <rhyme label="a" type="f">verharden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Nimmermeer, maer doet uw’ <rhyme label="b" type="m">knecht</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Een gevoelijk hert <rhyme label="a" type="f" corresp="#s1:l1">gewerden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Als ’t u inspraek <rhyme label="b" type="m" corresp="#s1:l2">onderrecht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Want geen meerder quaed men <rhyme label="c" type="m">vind</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Als te wezen hard en <rhyme label="c" type="m" corresp="#s1:l5">blind</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wildter my toch af <rhyme label="a" type="f">bevrijen</rhyme>.</l>
        <l id="s2:l2" met="4" type="+-">Des verzaek ik vroug en <rhyme label="b" type="m">spae</rhyme></l>
        <l id="s2:l3" met="4" type="+-">’t Ongelijk der <rhyme label="a" type="f" corresp="#s2:l1">ketterijen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Tot verdriet van uw’ <rhyme label="b" type="m" corresp="#s2:l2">genae</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Scheldende, dat van u <rhyme label="c" type="m">werd</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Blind gemaekt des zondaers <rhyme label="c" type="m" corresp="#s2:l5">hart</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maer geenzins. o  Christen <rhyme label="a" type="f">menschen</rhyme>!</l>
        <l id="s3:l2" met="4" type="+-">Goods genaed’ is zonder <rhyme label="b" type="m">maet</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Noch en heefe geen liever <rhyme label="a" type="f" corresp="#s3:l1">wenschen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Dan dat ghy de zonden <rhyme label="b" type="m" corresp="#s3:l2">laet</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Des zoo klopt hy voor uw’ <rhyme label="c" type="m">poort</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Tot dat ghy zijn kloppen <rhyme label="c" type="m" corresp="#s3:l5">hoordt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">‘k Wil de dood niet der <rhyme label="a" type="f">zondaren</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Maer hun leven, roupt den <rhyme label="b" type="m">Heer</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Wild uw’ hart dan niet <rhyme label="a" type="f" corresp="#s4:l1">bezwaren</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Maer leedwezig keeren <rhyme label="b" type="m" corresp="#s4:l2">weer</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Doch by tijds, want lang <rhyme label="c" type="m">getukt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Heeft verscheyde ziel <rhyme label="c" type="m" corresp="#s4:l5">mislukt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Goods genade staet wel <rhyme label="a" type="f">open</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Zelfs ook tot de laetste <rhyme label="b" type="m">dood</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Maer men moetze niet <rhyme label="a" type="f" corresp="#s5:l1">verlopen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">z’Is altijd niet even <rhyme label="b" type="m" corresp="#s5:l2">groot</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Neemtze waer, als ghyze <rhyme label="c" type="m">hebt</rhyme>:</l>
        <l id="s5:l6" met="4" type="+-">Want het water vloeidt en <rhyme label="c" type="m" corresp="#s5:l5">ebt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Iae men heeft wel dik <rhyme label="a" type="f">bevonden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">(Spiegelt u, maer spiegeld <rhyme label="b" type="m">zacht</rhyme>)</l>
        <l id="s6:l3" met="4" type="+-">Dat den tragen in zijn <rhyme label="a" type="f" corresp="#s6:l1">zonden</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Onvoorzienlijk bleef <rhyme label="b" type="m" corresp="#s6:l2">versmacht</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Mids dat zijn verharde <rhyme label="c" type="m">schuld</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Had mis bezigt Goods <rhyme label="c" type="m" corresp="#s6:l5">geduld</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wild uw’ hart dan niet <rhyme label="a" type="f">verstokken</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">En laet d’ooren <rhyme label="b" type="m">ongestopt</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">Want met God is niet te <rhyme label="a" type="f" corresp="#s7:l1">iokken</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Als hy t’uwer deuren <rhyme label="b" type="m" corresp="#s7:l2">klopt</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Iesu komt! mijn deur is <rhyme label="c" type="m">op</rhyme>:</l>
        <l id="s7:l6" met="4" type="+-">Door uw’ amoureuse <rhyme label="c" type="m" corresp="#s7:l5">klop</rhyme>.</l>
      </lg>
    </lg>
  </text>
