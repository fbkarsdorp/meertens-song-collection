  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">AL 't vermaeck van dese <rhyme label="a" type="f">Werelt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hoe verheven <rhyme label="b" type="m">opghesmuyckt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Hoe bedrieghelijck <rhyme label="a" type="f" corresp="#s1:l1">bepeerelt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Hoe vernustelijck <rhyme label="b" type="m" corresp="#s1:l2">ghepruyckt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Hoe spitsvondigh datse <rhyme label="c" type="m">toyt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Ach! se maeckt de Ziel <rhyme label="c" type="m" corresp="#s1:l5">beroyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hoe heur trotse prachten <rhyme label="a" type="f">klimmen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Schier tot aen de Sterren <rhyme label="b" type="m">op</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Boven aen de hooghste <rhyme label="a" type="f" corresp="#s2:l1">kimmen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Van den alderweytsten <rhyme label="b" type="m" corresp="#s2:l2">top</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Hoe verheerlijckt en <rhyme label="c" type="m">vermooyt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Ach! se maeckt de Ziel <rhyme label="c" type="m" corresp="#s2:l5">berooyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hoe heur preutse Ionckers <rhyme label="a" type="f">brallen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Met 'er sacken vol van <rhyme label="b" type="m">geldt</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Hoe de dartle wichters <rhyme label="a" type="f" corresp="#s3:l1">mallen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Als 'er wat de kruymen <rhyme label="b" type="m" corresp="#s3:l2">quelt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Hoese in de weelde <rhyme label="c" type="m">pooyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Ach se maeckt het Ziel <rhyme label="c" type="m" corresp="#s3:l5">berooyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Beter Wereldt af te <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En te leven nae de <rhyme label="b" type="m">gheest</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Beter haer ghekoock te <rhyme label="a" type="f" corresp="#s4:l1">derven</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En te tre'en aen Jesu <rhyme label="b" type="m" corresp="#s4:l2">Feest</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Beter wellust wech <rhyme label="c" type="m">ghegooyt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dan de Ziel te zijn <rhyme label="c" type="m" corresp="#s4:l5">berooyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
