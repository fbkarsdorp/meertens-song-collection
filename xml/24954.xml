  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Zayt mir, mijn vrou voer allen <rhyme label="a" type="m">wiven</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wildir mich aldus <rhyme label="b" type="f">verslaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Zulder mich tsemael <rhyme label="a" type="m" corresp="#s1:l1">ontliven</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Was haen ich ieghen uuch <rhyme label="b" type="f" corresp="#s1:l2">misdaen</rhyme>?</l>
        <l id="s1:l5" met="4" type="-+">Uyr vri-eyghen wil ich <rhyme label="c" type="f">sijn</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Uysercoren roter <rhyme label="d" type="m">mont</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Gher verderft die hertz <rhyme label="c" type="f" corresp="#s1:l5">miin</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Waerom halder mich <rhyme label="d" type="m" corresp="#s1:l6">ghewont</rhyme>?</l>
        <l id="s1:l9" met="4" type="+-">Hophe ende troest halt mer das <rhyme label="e" type="m">lijf</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Oph eynre, dyr ich wael <rhyme label="f" type="m">betrouwe</rhyme>;</l>
        <l id="s1:l11" met="4" type="+-">Die scone halt myr ghevangen <rhyme label="e" type="m" corresp="#s1:l9">stijf</rhyme>,</l>
        <l id="s1:l12" met="4" type="+-">Se deyt mir diche liden <rhyme label="f" type="m" corresp="#s1:l10">rouwe</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ich en denche in gheynre <rhyme label="a" type="m">uren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wie ich miin leven leyden <rhyme label="b" type="f">sal</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Altoes deyt zijt mer <rhyme label="a" type="m" corresp="#s2:l1">bezuren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Yr lieflich oeghen, das ist <rhyme label="b" type="f" corresp="#s2:l2">al</rhyme>!</l>
        <l id="s2:l5" met="4" type="-+">Mucht ic zi eenen dach <rhyme label="c" type="f">aenscouwen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Soe waer verganghen mijn <rhyme label="d" type="m">verdriet</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Scone, al hadder mich <rhyme label="c" type="f" corresp="#s2:l5">dorhouwen</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Zulde uch miins ontfermen <rhyme label="d" type="m" corresp="#s2:l6">niet</rhyme>.</l>
        <l id="s2:l9" met="4" type="+-">Hophe ende troest halt mer das <rhyme label="e" type="m">lijf</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Oph eynre, dyr ich wael <rhyme label="f" type="m">betrouwe</rhyme>;</l>
        <l id="s2:l11" met="4" type="+-">Die scone halt myr ghevangen <rhyme label="e" type="m" corresp="#s2:l9">stijf</rhyme>,</l>
        <l id="s2:l12" met="4" type="+-">Se deyt mir diche liden <rhyme label="f" type="m" corresp="#s2:l10">rouwe</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In die feeste en quam ich <rhyme label="a" type="m">no</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Daer af verbliid eyn <rhyme label="b" type="f">caf</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Al die vrude, die is <rhyme label="a" type="m" corresp="#s3:l1">ho</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die guete nemt mir allent <rhyme label="b" type="f" corresp="#s3:l2">af</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Och vrou, ich haen uch <rhyme label="c" type="f">uysvercoren</rhyme>!</l>
        <l id="s3:l6" met="4" type="+-">Helft mir uys elender <rhyme label="d" type="m">noyt</rhyme>!</l>
        <l id="s3:l7" met="4" type="+-">Wilder, das ich blive <rhyme label="c" type="f" corresp="#s3:l5">verloren</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Om uch sterve ich gerne eyn <rhyme label="d" type="m" corresp="#s3:l6">doyt</rhyme>.</l>
        <l id="s3:l9" met="4" type="+-">Hophe ende troest halt mer das <rhyme label="e" type="m">lijf</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Oph eynre, dyr ich wael <rhyme label="f" type="m">betrouwe</rhyme>;</l>
        <l id="s3:l11" met="4" type="+-">Die scone halt myr ghevangen <rhyme label="e" type="m" corresp="#s3:l9">stijf</rhyme>,</l>
        <l id="s3:l12" met="4" type="+-">Se deyt mir diche liden <rhyme label="f" type="m" corresp="#s3:l10">rouwe</rhyme>.</l>
      </lg>
    </lg>
