<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33523</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag translation="advent song">adventslied</tag>
    </tags>
    <melody>Hoe lustelijk is ons de koele mei gedaan</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Adam wilt v trueren <rhyme label="a" type="f">vergeten</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Laet vaeren v kermen tot deser <rhyme label="b" type="m">stont</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Dat uwe naecomers, die H. <rhyme label="a" type="f" corresp="#s1:l1">Propheten</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Hebben gheroepen met haren <rhyme label="b" type="m" corresp="#s1:l2">mont</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Vanden grooten Propheet, die gesalfde des <rhyme label="a" type="f">heeren</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die ons allen was <rhyme label="b" type="m">belooft</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Om Satans rijck te <rhyme label="a" type="f" corresp="#s2:l1">destrueeren</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En alzoo te vertreden zynen <rhyme label="b" type="m" corresp="#s2:l2">hooft</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een vrouwe heeft ons ghebracht tot <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ende in den eewighen <rhyme label="b" type="m">doot</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Een vrou isser wederom <rhyme label="a" type="f" corresp="#s3:l1">gheuonden</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Die ons verlost heeft wt dier <rhyme label="b" type="m" corresp="#s3:l2">noot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Septer van Iuda soude niet <rhyme label="a" type="f">faelieeren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Tot dat ons Messias <rhyme label="b" type="m">quam</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die ginck Iacob al <rhyme label="a" type="f" corresp="#s4:l1">prophenteeren</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Doen was Herodes wt een ander <rhyme label="b" type="m" corresp="#s4:l2">stam</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Onder welcken Christus wert <rhyme label="a" type="f">gheboren</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Aldus is die Prophecye <rhyme label="b" type="m">vervult</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Moyses sprack oock langhe te <rhyme label="a" type="f" corresp="#s5:l1">voren</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Sent toch, die ghy senden <rhyme label="b" type="m" corresp="#s5:l2">sult</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Noch gaet dien seluen <rhyme label="a" type="f">vertrecken</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Voor zynen volck een <rhyme label="b" type="m">Prophecy</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Godt sal wt v een propheet <rhyme label="a" type="f" corresp="#s6:l1">verwecken</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Die zult ghy hooren ghelyck als <rhyme label="b" type="m" corresp="#s6:l2">my</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">God die doet ons door Dauidt <rhyme label="a" type="f">vertrecken</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Die beschrijft ons nae Gods <rhyme label="b" type="m">beuoel</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dat Godt een saedt wt hem sal <rhyme label="a" type="f" corresp="#s7:l1">verwecken</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Die daer zal sitten op zynen <rhyme label="b" type="m" corresp="#s7:l2">stoel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Den rechten Soone Dauidts soude God <rhyme label="a" type="f">senden</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Soo ons die schrifture <rhyme label="b" type="m">seyt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Voort comende wt Dauidts <rhyme label="a" type="f" corresp="#s8:l1">lenden</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Ende sal regneeren inder <rhyme label="b" type="m" corresp="#s8:l2">eeuwicheyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Laet ons oock tot Daniël <rhyme label="a" type="f">comen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Die schr4ijft dat hy heeft <rhyme label="b" type="m">gesien</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Van een hooghen berch is aldaer <rhyme label="a" type="f" corresp="#s9:l1">genomen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Sonder handen eenen <rhyme label="b" type="m" corresp="#s9:l2">stien</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dese was cleyn, maer is <rhyme label="a" type="f">ghewassen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Tot eenen berch seer <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Dwelckmen op niemant als Christum can <rhyme label="a" type="f" corresp="#s10:l1">passen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Wiens naem is in al die werelt <rhyme label="b" type="m" corresp="#s10:l2">bloodt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Noch zoo comt desen Daniel <rhyme label="a" type="f">spreecken</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Van dese menschen zoon die comen <rhyme label="b" type="m">most</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Nae den tijt van t’seuentich <rhyme label="a" type="f" corresp="#s11:l1">weecken</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Dan souden wy te recht worden <rhyme label="b" type="m" corresp="#s11:l2">verlost</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ezechiel die sach een poorte <rhyme label="a" type="f">gheslooten</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Maer den Coninck die ginck daer <rhyme label="b" type="m">door</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Vanden tempel is Gods water <rhyme label="a" type="f" corresp="#s12:l1">geuloten</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Gods gratie quam ons menschen <rhyme label="b" type="m" corresp="#s12:l2">voor</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Godt den hemelschen Vader van <rhyme label="a" type="f">bouen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Heeft hem ouer ons <rhyme label="b" type="m">ontfermt</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Die hy Adam en Abraham ginck <rhyme label="a" type="f" corresp="#s13:l1">belouen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">En alle ouden om hebben <rhyme label="b" type="m" corresp="#s13:l2">ghekermt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Och of ghy die hemelen toch wout <rhyme label="a" type="f">scheuren</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Riep Esaias met een <rhyme label="b" type="m">accoort</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Och mochte ons dat toch eens <rhyme label="a" type="f" corresp="#s14:l1">ghebueren</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Dat ons verlosser wilde comen <rhyme label="b" type="m" corresp="#s14:l2">voort</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Laet die hemelen van bouen <rhyme label="a" type="f">douwen</rhyme></l>
        <l id="s15:l2" met="4" type="-+">En laet regueren die wolcken <rhyme label="b" type="m">hooch</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Den rechtuerdigen, riepen den <rhyme label="a" type="f" corresp="#s15:l1">ouwen</rhyme></l>
        <l id="s15:l4" met="4" type="-+">T’sauonts, ende des morgens <rhyme label="b" type="m" corresp="#s15:l2">vroech</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Laet die aerde mede gaen <rhyme label="a" type="f">open</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">En brenghen den Salichmaecker <rhyme label="b" type="m">voort</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Nu soo is dit haer langhe <rhyme label="a" type="f" corresp="#s16:l1">roepen</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Van Godt den hemelschen vader <rhyme label="b" type="m" corresp="#s16:l2">verhoort</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Alzo lief hadt Godt ons sondige <rhyme label="a" type="f">menschen</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Dat hy syn eenighen Soone <rhyme label="b" type="m">gaf</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Daer alle Propheeten om ginghen <rhyme label="a" type="f" corresp="#s17:l1">wenschen</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Om op hem te nemen onsen <rhyme label="b" type="m" corresp="#s17:l2">staf</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Godt heeft ghenuchte met ons te <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Hy is onsen <rhyme label="b" type="m">Emanuel</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Daer wy by alle Propheten af <rhyme label="a" type="f" corresp="#s18:l1">lesen</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Die heeft hem becleedt met onsen <rhyme label="b" type="m" corresp="#s18:l2">vel</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Met vleysch, ende met baanderen <rhyme label="a" type="f">meden</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Is hy gheworden ghelyck als <rhyme label="b" type="m">wy</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Behaluen sonde die hy noyt en <rhyme label="a" type="f" corresp="#s19:l1">deden</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Want daer af zoo was hy <rhyme label="b" type="m" corresp="#s19:l2">vry</rhyme></l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Laet ons desen Coninck met <rhyme label="a" type="f">waerdicheden</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Wellecom heten in deser <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Soo die van Ierusalem eens <rhyme label="a" type="f" corresp="#s20:l1">deden</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Wellecom Soons Dauidts <rhyme label="b" type="m" corresp="#s20:l2">ghebenedyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
