    <tags/>
    <melody>Lustig lustig kom nu bij</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Danckbaar, danckbaar, sal ick <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">ô! Mijn Godt voor u <rhyme label="a" type="m" corresp="#s1:l1">aanschijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Om dat gy my hebt <rhyme label="b" type="m">verhoort</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Doe mijn rust naar was <rhyme label="b" type="m" corresp="#s1:l3">gestoort</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Alderhooghste <rhyme label="a" type="m">Majesteyt</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Gy hebt my van 't quaat <rhyme label="a" type="m" corresp="#s2:l1">geleyt</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">En van een beanghste <rhyme label="b" type="m">stant</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Door u stercke reghter <rhyme label="b" type="m" corresp="#s2:l3">hant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als my hielt de sonde <rhyme label="a" type="m">vast</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Met haar groote <rhyme label="a" type="m" corresp="#s3:l1">overlast</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Om verlossingh ick u <rhyme label="b" type="m">bat</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Groote Godt gy hoorde <rhyme label="b" type="m" corresp="#s3:l3">dat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Gy verloste my van 't <rhyme label="a" type="m">quaat</rhyme>;</l>
        <l id="s4:l2" met="4" type="+-">Hier voor sal mijn leevens <rhyme label="a" type="m" corresp="#s4:l1">staat</rhyme></l>
        <l id="s4:l3" met="4" type="+-">U betoonen <rhyme label="b" type="m">danckbaarheyt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Alle mijne leevens <rhyme label="b" type="m" corresp="#s4:l3">tijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Was verlooren niet u <rhyme label="a" type="m">Kint</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dat gy nu weer trou <rhyme label="a" type="m" corresp="#s5:l1">bemint</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Om dat gy sijn quaat <rhyme label="b" type="m">vergeeft</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Nu hy met bekeeringh <rhyme label="b" type="m" corresp="#s5:l3">leeft</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hy verdient hadt uwe <rhyme label="a" type="m">straf</rhyme>;</l>
        <l id="s6:l2" met="4" type="+-">Maar u liefde aan hem <rhyme label="a" type="m" corresp="#s6:l1">gaf</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Uwe <rhyme label="b" type="m">goedertierentheyt</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">'t Loon voor 't quaat scholt gy hem <rhyme label="b" type="m" corresp="#s6:l3">quyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Na hy van de sonde <rhyme label="a" type="m">gongh</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">In u arm gy hem <rhyme label="a" type="m" corresp="#s7:l1">ontfongh</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">Gy soght naa 't verdoolde <rhyme label="b" type="m">schaap</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Als u vont die vroome <rhyme label="b" type="m" corresp="#s7:l3">knaap</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Wat sal sijn mijn <rhyme label="a" type="m">danckbaarheyt</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Alderhooghste <rhyme label="a" type="m" corresp="#s8:l1">Majesteyt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Die ick aan u off'ren <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Voor al u beweesen <rhyme label="b" type="m" corresp="#s8:l3">goet</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">En dat gy my 't quaat <rhyme label="a" type="m">vergaf</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Als ick hat verdient u <rhyme label="a" type="m" corresp="#s9:l1">straf</rhyme>?</l>
        <l id="s9:l3" met="4" type="+-">'t Sal een deughtsaam leeven <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Voor u blinckent schoon <rhyme label="b" type="m" corresp="#s9:l3">aanschijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Sonde mijn geest maackte <rhyme label="a" type="m">kranck</rhyme>.</l>
        <l id="s10:l2" met="4" type="+-">ô! Ick u wel trou <rhyme label="a" type="m" corresp="#s10:l1">bedanck</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Dat gy haar by 't leeven <rhyme label="b" type="m">hielt</rhyme>;</l>
        <l id="s10:l4" met="4" type="+-">En hebt 't lighaam niet <rhyme label="b" type="m" corresp="#s10:l3">ontzielt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Naar sou sijn geweest mijn <rhyme label="a" type="m">stant</rhyme>;</l>
        <l id="s11:l2" met="4" type="+-">Maar u stercke reghter <rhyme label="a" type="m" corresp="#s11:l1">hant</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Haar bewaart heeft voor haar <rhyme label="b" type="m">val</rhyme>;</l>
        <l id="s11:l4" met="4" type="+-">Ick u daar voor looven <rhyme label="b" type="m" corresp="#s11:l3">sal</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Al mijn leevens daagen <rhyme label="a" type="m">langh</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Sal ick u met mijn <rhyme label="a" type="m" corresp="#s12:l1">gesangh</rhyme></l>
        <l id="s12:l3" met="4" type="+-">Looven, voor u <rhyme label="b" type="m">goedigheyt</rhyme>;</l>
        <l id="s12:l4" met="4" type="+-">'k Hoop oock na mijn leevens <rhyme label="b" type="m" corresp="#s12:l3">tijt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Doe ick uwe gunst <rhyme label="a" type="m">verloor</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Dwaalde ick van 't Heemels <rhyme label="a" type="m" corresp="#s13:l1">spoor</rhyme>;</l>
        <l id="s13:l3" met="4" type="+-">Ick by na verlooren <rhyme label="b" type="m">gingh</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Doe de sonde my <rhyme label="b" type="m" corresp="#s13:l3">omvingh</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Soo rat ick bedaght mijn <rhyme label="a" type="m">sond'</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Mijne geest geen ruste <rhyme label="a" type="m" corresp="#s14:l1">vond</rhyme>;</l>
        <l id="s14:l3" met="4" type="+-">Dit my weeder tot u <rhyme label="b" type="m">braght</rhyme>;</l>
        <l id="s14:l4" met="4" type="+-">'t Geen ick niet en hat <rhyme label="b" type="m" corresp="#s14:l3">verwaght</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Uwe stercke reghter <rhyme label="a" type="m">hant</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Leyt my na het <rhyme label="a" type="m" corresp="#s15:l1">vaderlant</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">'t Geen eens volmaackt weesen <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Voor het zaligh vroom <rhyme label="b" type="m" corresp="#s15:l3">getal</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Laat ick u trou houden <rhyme label="a" type="m">vast</rhyme>;</l>
        <l id="s16:l2" met="4" type="+-">Op dat 't quaat my niet <rhyme label="a" type="m" corresp="#s16:l1">verrast</rhyme>;</l>
        <l id="s16:l3" met="4" type="+-">Of niet voert na mijn <rhyme label="b" type="m">verderf</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Door een goddeloos <rhyme label="b" type="m" corresp="#s16:l3">gesterf</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Groot was die <rhyme label="a" type="m">ondanckbaarheyt</rhyme>;</l>
        <l id="s17:l2" met="4" type="+-">Om dat gy my hebt <rhyme label="a" type="m" corresp="#s17:l1">bevrijt</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">Voor u straffen voor mijn <rhyme label="b" type="m">quaat</rhyme>,</l>
        <l id="s17:l4" met="4" type="+-">En voor eene helse <rhyme label="b" type="m" corresp="#s17:l3">staat</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Soo ick weer verval tot 't <rhyme label="a" type="m">geen</rhyme></l>
        <l id="s18:l2" met="4" type="+-">My kan geeven 't quaats <rhyme label="a" type="m" corresp="#s18:l1">geween</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Soo sal erger sijn mijn <rhyme label="b" type="m">stant</rhyme>,</l>
        <l id="s18:l4" met="4" type="+-">Als die ick voor deese <rhyme label="b" type="m" corresp="#s18:l3">vant</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Ick sal van de sonde <rhyme label="a" type="m">vlien</rhyme>;</l>
        <l id="s19:l2" met="4" type="+-">En nooit meer naa 't quaat <rhyme label="a" type="m" corresp="#s19:l1">omsien</rhyme>.</l>
        <l id="s19:l3" met="4" type="+-">Laat ick voortaan pleegen <rhyme label="b" type="m">deught</rhyme>;</l>
        <l id="s19:l4" met="4" type="+-">Om te koomen in u <rhyme label="b" type="m" corresp="#s19:l3">vreught</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Als my hier het quaat <rhyme label="a" type="m">ontmoet</rhyme>,</l>
        <l id="s20:l2" met="4" type="+-">Voor haar list my dogh <rhyme label="a" type="m" corresp="#s20:l1">behoet</rhyme>;</l>
        <l id="s20:l3" met="4" type="+-">Op dat ick niet koom ten <rhyme label="b" type="m">val</rhyme>,</l>
        <l id="s20:l4" met="4" type="+-">Als ick u vroom dienen <rhyme label="b" type="m" corresp="#s20:l3">sal</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Neemt dan aan mijn <rhyme label="a" type="m">danckbaarheyt</rhyme>,</l>
        <l id="s21:l2" met="4" type="+-">Alderhooghste <rhyme label="a" type="m" corresp="#s21:l1">Majesteyt</rhyme>.</l>
        <l id="s21:l3" met="4" type="+-">Schenckt my oock u eeuwigh <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s21:l4" met="4" type="+-">Door u gunst en Jesus <rhyme label="b" type="m" corresp="#s21:l3">bloet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
