  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">MYn hop', myn <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Myn rust, wellust, en <rhyme label="b" type="m">playsier</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Jesu waer zyt ghy <rhyme label="a" type="f" corresp="#s1:l1">ghebleven</rhyme></l>
        <l id="s1:l4" met="4" type="+-">My nen troost komt weder <rhyme label="b" type="m" corresp="#s1:l2">hier</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Al heb ick u door myn <rhyme label="c" type="f">sonden</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Uyt u logement <rhyme label="d" type="m">ghejaegt</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Wascht my weder in u <rhyme label="c" type="f" corresp="#s1:l5">Wonden</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Alsoo schoon als 't u <rhyme label="d" type="m" corresp="#s1:l6">behaegt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ciert my met <rhyme label="a" type="f">deugden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Maeckt self u logist <rhyme label="b" type="m">bereydt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Op dat ick weêr smaeck de <rhyme label="a" type="f" corresp="#s2:l1">vreugden</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Van u <rhyme label="b" type="m" corresp="#s2:l2">tegenwoordigheydt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Lieven Jesu licht der <rhyme label="c" type="f">Glori'</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Teeckent uwen soeten <rhyme label="d" type="m">Naem</rhyme></l>
        <l id="s2:l7" met="4" type="+-">In myn hert en myn <rhyme label="c" type="f" corresp="#s2:l5">memori'</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Maeckt myn ziel u <rhyme label="d" type="m" corresp="#s2:l6">aengenaem</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Maeckt myn <rhyme label="a" type="f">ghepeysen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Nagel-vast aen 't heylig <rhyme label="b" type="m">Kruys</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Brandt myn hert in u <rhyme label="a" type="f" corresp="#s3:l1">Fornysen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Worpt u fackel in myn <rhyme label="b" type="m" corresp="#s3:l2">huys</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Laet in my u gratie <rhyme label="c" type="f">sincken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">En vernieuwt myn hert en <rhyme label="d" type="m">sin</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Geeft my Wyn en Melck te <rhyme label="c" type="f" corresp="#s3:l5">drincken</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Maeckt my droncken in u <rhyme label="d" type="m" corresp="#s3:l6">min</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Maer moet ick <rhyme label="a" type="f">bloeden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Soo myn boosheyt heeft <rhyme label="b" type="m">verdint</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Slaet den Esel vry met <rhyme label="a" type="f" corresp="#s4:l1">roeden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Straft u Kindt dat ghy <rhyme label="b" type="m" corresp="#s4:l2">bemint</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Uwe roed' sal my <rhyme label="c" type="f">verblyden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Want die gy komt straffen <rhyme label="d" type="m">hier</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Die en sult gy niet <rhyme label="c" type="f" corresp="#s4:l5">kastyden</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Naermaels met het eeuwig <rhyme label="d" type="m" corresp="#s4:l6">vier</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Komt my vry <rhyme label="a" type="f">proeven</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Nemt my myn gesontheyt <rhyme label="b" type="m">af</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Ick en sal my niet <rhyme label="a" type="f" corresp="#s5:l1">bedroeven</rhyme></l>
        <l id="s5:l4" met="4" type="+-">'k Sal u loven in de <rhyme label="b" type="m" corresp="#s5:l2">straf</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Want ick weet dat uwe <rhyme label="c" type="f">roeden</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Niet als minne-brieven <rhyme label="d" type="m">zyn</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Doet myn lichaemvry wat <rhyme label="c" type="f" corresp="#s5:l5">bloedé</rhyme></l>
        <l id="s5:l8" met="4" type="+-">'t Is de Ziel een <rhyme label="d" type="m" corresp="#s5:l6">Medecyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Godt van myn <rhyme label="a" type="f">ziele</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Trooster van myn pyn en <rhyme label="b" type="m">smert</rhyme></l>
        <l id="s6:l3" met="4" type="+-">'k Kom' ootmoedig voor u <rhyme label="a" type="f" corresp="#s6:l1">knielé</rhyme></l>
        <l id="s6:l4" met="4" type="+-">En u offeren myn <rhyme label="b" type="m" corresp="#s6:l2">hert</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Die doet willen geeft <rhyme label="c" type="f">vermogen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Ick den wil en ghy de <rhyme label="d" type="m">daet</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Ick den Pyl, en ghy den <rhyme label="c" type="f" corresp="#s6:l5">Boghe</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Jesu mynen <rhyme label="d" type="m" corresp="#s6:l6">toe-verlaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
