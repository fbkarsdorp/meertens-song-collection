  <author>Joannes Six van Chandelier</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Uw oore neem, o Heer, myn <rhyme label="a" type="f">klagten</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En wat ik segge gunstig <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wil myn benaauwt gesucht <rhyme label="b" type="m" corresp="#s1:l2">verstaan</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Gy weet wel dat myn leeds <rhyme label="a" type="f" corresp="#s1:l1">gedachten</rhyme></l>
        <l id="s1:l5" met="2" type="-+">My schier doen <rhyme label="a" type="f" corresp="#s1:l1">smachten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Let op de stemme van myn <rhyme label="a" type="f">reeden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Gy, die myn God, en kooning <rhyme label="b" type="m">zyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Merk hoe ik staadig roep, en <rhyme label="b" type="m" corresp="#s2:l2">kryt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Want ik ontvouw myn <rhyme label="a" type="f" corresp="#s2:l1">noodgebeeden</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Tot u <rhyme label="a" type="f" corresp="#s2:l1">getreeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wil, Heer, myn stemme niet <rhyme label="a" type="f">verachten</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Wanneer gy, 's morgens vroeg, my <rhyme label="b" type="m">hoort</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Want 's morgens vroeg schik ik my <rhyme label="b" type="m" corresp="#s3:l2">voort</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Tot u, om antwoord op myn <rhyme label="a" type="f" corresp="#s3:l1">klagten</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">En blyve <rhyme label="a" type="f" corresp="#s3:l1">wachten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want uw natuur, en werk <rhyme label="a" type="f">betoonen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Dat gy, een God, die deugd <rhyme label="b" type="m">bemint</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Geen lust in goddeloosheit <rhyme label="b" type="m" corresp="#s4:l2">vind</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Geen booswigt, die den Heer derft <rhyme label="a" type="f" corresp="#s4:l1">hoonen</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Zal by u <rhyme label="a" type="f" corresp="#s4:l1">woonen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het volk dat aaverechtsche <rhyme label="a" type="f">weegen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Al willens sinloos, blyft <rhyme label="b" type="m">begaan</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Zal voor uw oogen niet <rhyme label="b" type="m" corresp="#s5:l2">bestaan</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Gy haat de menschen, die <rhyme label="a" type="f" corresp="#s5:l1">geneegen</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Steeds onrecht <rhyme label="a" type="f" corresp="#s5:l1">pleegen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gy zult die snoode leugens <rhyme label="a" type="f">spreeken</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Verdoen, als waardig zulken <rhyme label="b" type="m">ban</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">De Heere grouwelt van den <rhyme label="b" type="m" corresp="#s6:l2">man</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die bloedsiek, door bedrog, en <rhyme label="a" type="f" corresp="#s6:l1">treeken</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Sich tracht te <rhyme label="a" type="f" corresp="#s6:l1">wreeken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maar ik ga, door uw gunsts <rhyme label="a" type="f">gedoogen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat groot is, in uw huis vol <rhyme label="b" type="m">lof</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Wend naa 't palleis, uw heilig <rhyme label="b" type="m" corresp="#s7:l2">hof</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In uwer vreese, bei myn <rhyme label="a" type="f" corresp="#s7:l1">oogen</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">En bid <rhyme label="a" type="f" corresp="#s7:l1">geboogen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Lei my in uw <rhyme label="a" type="f">gerechtigheeden</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Op dat, o Heer, my niemand <rhyme label="b" type="m">vang</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Want meenig boef verspiedt myn <rhyme label="b" type="m" corresp="#s8:l2">gang</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Richt my uw weg, dat ik, met <rhyme label="a" type="f" corresp="#s8:l1">vreeden</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Dien mag <rhyme label="a" type="f" corresp="#s8:l1">betreeden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Daar is niet rechts in hunne <rhyme label="a" type="f">monden</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Hun binnenst is seer arg, en <rhyme label="b" type="m">straf</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Hun keel gelykt een oopen <rhyme label="b" type="m" corresp="#s9:l2">graf</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Hun tonge vleit met schoone <rhyme label="a" type="f" corresp="#s9:l1">vonden</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Die niet dan <rhyme label="a" type="f" corresp="#s9:l1">wonden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Verklaar, o God, hun schuld, door <rhyme label="a" type="f">plaagen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Hun raad vervalle, stootse <rhyme label="b" type="m">heen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Om hun veelvoudig <rhyme label="b" type="m" corresp="#s10:l2">oovertreen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Wyl sy sich, teegen u <rhyme label="a" type="f" corresp="#s10:l1">behaagen</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Weerspannig <rhyme label="a" type="f" corresp="#s10:l1">draagen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dat die op u betrouwen <rhyme label="a" type="f">singen</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Elk juich, in eeuwigheit <rhyme label="b" type="m">verheugt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Bedek gy hen, en laat, van <rhyme label="b" type="m" corresp="#s11:l2">vreugd</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Uw heilgen naams <rhyme label="a" type="f" corresp="#s11:l1">beminnelingen</rhyme></l>
        <l id="s11:l5" met="2" type="-+">Steeds op gaan <rhyme label="a" type="f" corresp="#s11:l1">springen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Want, Heer, uw seegen zal <rhyme label="a" type="f">betoonen</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Wat man dat rechte weegen <rhyme label="b" type="m">gaat</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Gy zult, met goede gunst, syn <rhyme label="b" type="m" corresp="#s12:l2">staat</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Als met een sterk rondas, <rhyme label="a" type="f" corresp="#s12:l1">bekroonen</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">En zoo hem <rhyme label="a" type="f" corresp="#s12:l1">loonen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
