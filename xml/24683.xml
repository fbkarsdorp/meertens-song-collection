  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">¶ Der weerels minne es al <rhyme label="a" type="f">verloren</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ey want men gheen ghetrau en <rhyme label="b" type="m">vint</rhyme></l>
        <l id="s1:l3" met="4" type="-+">¶ Och lacen wat haddic <rhyme label="a" type="f" corresp="#s1:l1">vercoren</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Doe ic haer met solaes <rhyme label="b" type="m" corresp="#s1:l2">ontfinc</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och zonde heeft sij bouen <rhyme label="a" type="f">mate</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Op my gheladen menich <rhyme label="b" type="m">jaer</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Ende nv soudicse gherne <rhyme label="a" type="f" corresp="#s2:l1">laten</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dat sceyden valt my alte <rhyme label="b" type="m" corresp="#s2:l2">zwaer</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och tsceyden dat moet emmer <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Van deser weerelt op eenen <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Dus suchtich dicke van grooter <rhyme label="a" type="f" corresp="#s3:l1">vreesen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Want qualic hebbic my <rhyme label="b" type="m" corresp="#s3:l2">ghequit</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ic mach wel suchten ende <rhyme label="a" type="f">beuen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Als ic sal sceyden van <rhyme label="b" type="m">eertrijc</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Want reden salic moeten <rhyme label="a" type="f" corresp="#s4:l1">gheuen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">vor al mijn sonden <rhyme label="b" type="m" corresp="#s4:l2">haestelijc</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och lacen ic en weet gheen <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s5:l2" met="4" type="-+">voor dminste dat ic heb <rhyme label="b" type="m">mesdaen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Och haddic doordeel wel <rhyme label="a" type="f" corresp="#s5:l1">gheleden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">mij gruet zeer ter antwort <rhyme label="b" type="m" corresp="#s5:l2">staen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Och mochtich gracie nv <rhyme label="a" type="f">verweruen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">vor al mijn sonden het waer my <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Want alst gheeft tijt dat ic sal <rhyme label="a" type="f" corresp="#s6:l1">steruen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Dan salics hebben gheenen <rhyme label="b" type="m" corresp="#s6:l2">moet</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hier om waert goet condic <rhyme label="a" type="f">gheuen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Te dienen ihesu vlues ter <rhyme label="b" type="m">stont</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Want of ic noch een vre sal <rhyme label="a" type="f" corresp="#s7:l1">leuen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">En weetic niet of zijn <rhyme label="b" type="m" corresp="#s7:l2">ghesont</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och hoe traghe ben ic int <rhyme label="a" type="f">sceyden</rhyme></l>
        <l id="s8:l2" met="4" type="-+">van deser werelt <rhyme label="b" type="m">ydelheit</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Ic weet nochtan hets scaerp te <rhyme label="a" type="f" corresp="#s8:l1">liden</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Want altijt es die doot <rhyme label="b" type="m" corresp="#s8:l2">bereyt</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Och waerwaert salic my nv <rhyme label="a" type="f">keeren</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Daer ic sal moghen troest <rhyme label="b" type="m">ontfaen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Al eist my hert tes mijn <rhyme label="a" type="f" corresp="#s9:l1">begheeren</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Der werels vrueghde af te <rhyme label="b" type="m" corresp="#s9:l2">staen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Och waren ihesus mijn <rhyme label="a" type="f">ghebeden</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Die ic sal doen <rhyme label="b" type="m">ontfankelijc</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Ende mocht mijn ziele commen in <rhyme label="a" type="f" corresp="#s10:l1">vreden</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Bij hem bouen in <rhyme label="b" type="m" corresp="#s10:l2">hemelrijc</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">So waric quite van allen <rhyme label="a" type="f">zorghen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">End ic wout singhen met <rhyme label="b" type="m">iolijt</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Altoes van tsauons tote der <rhyme label="a" type="f" corresp="#s11:l1">morghen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Jhesus moet zijn <rhyme label="b" type="m" corresp="#s11:l2">ghebenedijt</rhyme></l>
      </lg>
    </lg>
  </text>
