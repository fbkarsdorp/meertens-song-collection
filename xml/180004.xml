<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>180004</id>
    <date>
      <year-start>1828</year-start>
      <year-end>1828</year-end>
    </date>
    <tags/>
    <melody>De wereld is in rep en roer</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Zoo gij met schulden zijt <rhyme label="a" type="m">bezwaard</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dan met een oude vrouw <rhyme label="a" type="m" corresp="#s1:l1">gepaard</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dit slaat uw vreugd ter <rhyme label="b" type="f">neder</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Maar naauwlijks zijt gij vrouw en <rhyme label="c" type="m">man</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Of al uw schuld betaald gij <rhyme label="c" type="m" corresp="#s1:l4">dan</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En dit verheugd u <rhyme label="b" type="f" corresp="#s1:l3">weder</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Zijt gij bevreesd voor haar <rhyme label="a" type="m">gedruis</rhyme>.</l>
        <l id="s2:l2" met="4" type="-+">Dan blijft ge 's morgens bij haar <rhyme label="a" type="m" corresp="#s2:l1">thuis</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dit slaat uw vreugd ter <rhyme label="b" type="f">neder</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Maar dit is ook een blijk van <rhyme label="c" type="m">min</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Des avonds haalt g' uw schaÃª weer <rhyme label="c" type="m" corresp="#s2:l4">in</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En dit verheugd u <rhyme label="b" type="f" corresp="#s2:l3">weder</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gij moet ook somtijds met <rhyme label="a" type="m">beleid</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">U schikken naar haar <rhyme label="a" type="m" corresp="#s3:l1">grilligheid</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dit slaat uw vreugd ter <rhyme label="b" type="f">neder</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Zij walgt u door haar oudheid, <rhyme label="c" type="m">maar</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Lizette is eenentwintig <rhyme label="c" type="m" corresp="#s3:l4">jaar</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En dit verheugd u <rhyme label="b" type="f" corresp="#s3:l3">weder</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
