    <melody>Es ist das Heil uns kommen her</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Gheluckigh en saligh zijnse <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die in u Huys mogen <rhyme label="b" type="f">woonen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">V soete presentie verheught haer <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Reyn liefde zy u <rhyme label="b" type="f" corresp="#s1:l2">betoonen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Sy loven u in der <rhyme label="c" type="m">eeuwigheyt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">dat ghy so schoone stadt hebt <rhyme label="c" type="m" corresp="#s1:l5">bereyt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Om u Dienaers daer in te <rhyme label="b" type="f" corresp="#s1:l2">croonen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dese Stadt is uyt ghenomen <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Sy en sal oock niet <rhyme label="b" type="f">verwoesten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Want het is uwen Heylighen <rhyme label="a" type="m" corresp="#s2:l1">troon</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">wie en sou daer niet na <rhyme label="b" type="f" corresp="#s2:l2">lusten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">daer altijt geneughte is sonder <rhyme label="c" type="m">verdragh</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Daer duysent jaer is als eenen <rhyme label="c" type="m" corresp="#s2:l5">dagh</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">wel haer die daer in <rhyme label="b" type="f" corresp="#s2:l2">rusten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Soeckt dese Stadt doch alle <rhyme label="a" type="m">gaer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En wilt de weerelt <rhyme label="b" type="f">laten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Haer mueren zijn als Jaspis <rhyme label="a" type="m" corresp="#s3:l1">claer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Als fijn gout zijn haer <rhyme label="b" type="f" corresp="#s3:l2">straten</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Van Gesteenten en van Peerlen <rhyme label="c" type="m">net</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">So zijn haer poorten fraey <rhyme label="c" type="m" corresp="#s3:l5">gheset</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sy is so schoon boven <rhyme label="b" type="f" corresp="#s3:l2">maten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Inwoonders van dese Stadt Gods <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sijn verciert met blinckende <rhyme label="b" type="f">cleeren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Sy hebben hier in dit Aertsche <rhyme label="a" type="m" corresp="#s4:l1">pleyn</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ghedient den Heer der <rhyme label="b" type="f" corresp="#s4:l2">Heeren</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Haer Lampen verciert met Olye <rhyme label="c" type="m">saen</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Tot den Bruydegom zijn zy <rhyme label="c" type="m" corresp="#s4:l5">inghegaen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">In de vreughde die niet sal <rhyme label="b" type="f" corresp="#s4:l2">keeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dit is haer meeste vreught <rhyme label="a" type="m">ghewis</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die zy hebben <rhyme label="b" type="f">warachtigh</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Godt claer te aenschouwen ghelijck hy <rhyme label="a" type="m" corresp="#s5:l1">is</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ja zijn Godtlijck wesen <rhyme label="b" type="f" corresp="#s5:l2">crachtigh</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Van zijn claer blinckende aenschijn <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">V comt alle gheneughte ende vreughde <rhyme label="c" type="m" corresp="#s5:l5">soet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dus loven wy hem <rhyme label="b" type="f" corresp="#s5:l2">eendrachtigh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sy hebben oock vreught en <rhyme label="a" type="m">melodije</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Te aenschouwen die schoone <rhyme label="b" type="f">vriendinne</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Maria Gods Moeder en Maghet <rhyme label="a" type="m" corresp="#s6:l1">blije</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die Hemelsche <rhyme label="b" type="f" corresp="#s6:l2">Coninginne</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Die neghen chooren der Engelen <rhyme label="c" type="m">jent</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">De schoonheyt der Hemelen <rhyme label="c" type="m" corresp="#s6:l5">excellent</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dit verheught haer herten <rhyme label="b" type="f" corresp="#s6:l2">sinne</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Haer vreught die in <rhyme label="a" type="m">onsprekelijck</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die haer nu is <rhyme label="b" type="f">ghegheven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Om dat sy weten <rhyme label="a" type="m" corresp="#s7:l1">sekerlijck</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Dat haer namen zijn <rhyme label="b" type="f" corresp="#s7:l2">gheschreven</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">In het Boeck des levens reyn <rhyme label="c" type="m">onbevleckt</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Dit maeckt haer vreughde gheheel <rhyme label="c" type="m" corresp="#s7:l5">perfeckt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Dat zy eeuwigh daer sullen <rhyme label="b" type="f" corresp="#s7:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Daer en is gheen droefheyt noch <rhyme label="a" type="m">verdriet</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gheen lijden en mach haer <rhyme label="b" type="f">crencken</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Maer wat daer is en weet men <rhyme label="a" type="m" corresp="#s8:l1">niet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Gheen herte en cant <rhyme label="b" type="f" corresp="#s8:l2">bedencken</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">De schoonheyt van dese nieuwe <rhyme label="c" type="m">Stadt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Met al haer glorie, vreught en <rhyme label="c" type="m" corresp="#s8:l5">schat</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Sal Godt zijn Dienaren <rhyme label="b" type="f" corresp="#s8:l2">schencken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ghy edele Christianen <rhyme label="a" type="m">fier</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Wilt dit doch wel <rhyme label="b" type="f">versinnen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En wilt de Weerelt versmaden <rhyme label="a" type="m" corresp="#s9:l1">hier</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Om dese Stadt te <rhyme label="b" type="f" corresp="#s9:l2">winnen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Noyt menschen tonghe en hevet <rhyme label="c" type="m">verbreyt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Wat glorie onse Heer heeft <rhyme label="c" type="m" corresp="#s9:l5">bereyt</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Die hem te recht <rhyme label="b" type="f" corresp="#s9:l2">beminnen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghy Princen en Princessen <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Na dese Stadt wilt <rhyme label="b" type="f">haken</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Laet de dinghen die daer beneden <rhyme label="a" type="m" corresp="#s10:l1">zijn</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">En dat boven is wilt <rhyme label="b" type="f" corresp="#s10:l2">smaken</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Hier neerstelijck op u leven <rhyme label="c" type="m">let</rhyme>.</l>
        <l id="s10:l6" met="4" type="-+">Want so wat met zonden is <rhyme label="c" type="m" corresp="#s10:l5">besmet</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">V sal die Stadt niet <rhyme label="b" type="f" corresp="#s10:l2">ghenaken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
