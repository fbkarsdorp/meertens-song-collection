  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MEt Vreed' en Vreuchd' vaer ick daer <rhyme label="a" type="m">hen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In GOdes Heeren <rhyme label="b" type="f">wille</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghetroost is my myn Hert end <rhyme label="a" type="m" corresp="#s1:l1">Sin</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Gherust end <rhyme label="b" type="f" corresp="#s1:l2">stille</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Als my myn Godt Belovet <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">De Doot is myn een slaep <rhyme label="d" type="f">gheworden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dat maeckt Christus waer Godes <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die trouwe <rhyme label="b" type="f">Heylandt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dien ghy my HEEre hebt sien <rhyme label="a" type="m" corresp="#s2:l1">doen</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">End ghemaeckt <rhyme label="b" type="f" corresp="#s2:l2">bekandt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dat hy sy het Leven ende <rhyme label="c" type="m">Heyl</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">In Ancxt, Noot, end in <rhyme label="d" type="f">Sterven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dien hebt ghy Allen voor <rhyme label="a" type="m">ghestelt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wt Louter <rhyme label="b" type="f">ghenaden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Tot synen Rijck die heele <rhyme label="a" type="m" corresp="#s3:l1">Werl't</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Hebt laten <rhyme label="b" type="f" corresp="#s3:l2">Nooden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Door dijn dierbare Heylsaem <rhyme label="c" type="m">Woort</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Aen allen Oort <rhyme label="d" type="f">vercondet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy is dat Heyl end Salig' <rhyme label="a" type="m">Licht</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Voor alle <rhyme label="b" type="f">Heyden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Te verleuchten die dy kennen <rhyme label="a" type="m" corresp="#s4:l1">nicht</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">End om te <rhyme label="b" type="f" corresp="#s4:l2">Weyden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Hy is dijns Volcks van <rhyme label="c" type="m">Israel</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Haer Prijs, Eer, Vreucht end <rhyme label="d" type="f">Wonne</rhyme>.</l>
      </lg>
    </lg>
  </text>
