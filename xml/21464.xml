    <melody>Ik weet een vrouwtje amoureus</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOort Christus vermaen met woorden <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Tot synen Apostelen <rhyme label="b" type="f">wtuercoren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Preket woort Gods siet wat ghy <rhyme label="a" type="m" corresp="#s1:l1">doet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Mijn schapen loopen al <rhyme label="b" type="f" corresp="#s1:l2">verloren</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Sijt simpel als een duyue int <rhyme label="b" type="f" corresp="#s1:l2">hooren</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Schalck als <rhyme label="c" type="m">serpent</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Wacht v <rhyme label="c" type="m" corresp="#s1:l6">ontrent</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Aensiet den wolf al van te <rhyme label="b" type="f" corresp="#s1:l2">vooren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nero en was noyt so <rhyme label="a" type="m">wreet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Als nv die weerelt ick moet <rhyme label="b" type="f">vermonden</rhyme></l>
        <l id="s2:l3" met="4" type="-+">So wie dwoort Gods te rechte wt <rhyme label="a" type="m" corresp="#s2:l1">weet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Wert van die wolf <rhyme label="b" type="f" corresp="#s2:l2">verslonden</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Sy rasen als verwoede <rhyme label="b" type="f" corresp="#s2:l2">honden</rhyme></l>
        <l id="s2:l6" met="2" type="-+">So wie nv ter <rhyme label="c" type="m">tijt</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Die waerheyt <rhyme label="c" type="m" corresp="#s2:l6">belijt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Wert met Manassum <rhyme label="b" type="f" corresp="#s2:l2">ghebonden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het licht der Euangelien <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wert nv ter weerelt <rhyme label="b" type="f">ontsteken</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Men sietet verdrijuen tsy hier of <rhyme label="a" type="m" corresp="#s3:l1">daer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dit zijn des weerelts <rhyme label="b" type="f" corresp="#s3:l2">ghebreken</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Tschaep wert vanden wolf <rhyme label="b" type="f" corresp="#s3:l2">versteken</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Ick hope men <rhyme label="c" type="m">sal</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Noch ouer <rhyme label="c" type="m" corresp="#s3:l6">al</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Die waerheyt hooren <rhyme label="b" type="f" corresp="#s3:l2">preken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy comen ten tempel om haerlieden <rhyme label="a" type="m">profijt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ghecleet met schaeps <rhyme label="b" type="f">cleeren</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Tzijn grijpende woluen vol haet en <rhyme label="a" type="m" corresp="#s4:l1">nijt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat zijn die weereltsche <rhyme label="b" type="f" corresp="#s4:l2">heeren</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Gods tempelen sietmen <rhyme label="b" type="f" corresp="#s4:l2">onteeren</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Den <rhyme label="c" type="m">inneganck</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Wort een <rhyme label="c" type="m" corresp="#s4:l6">wisselbanck</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Wee v ghy Schrijuen en <rhyme label="b" type="f" corresp="#s4:l2">Pharizeen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">So wie een pont ontfanghen <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Uan gheestelicke <rhyme label="b" type="f">gauen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Siet dat hijs twee wederom <rhyme label="a" type="m" corresp="#s5:l1">gheeft</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En willet pont niet <rhyme label="b" type="f" corresp="#s5:l2">grauen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Helpt Christum met den cruyce <rhyme label="b" type="f" corresp="#s5:l2">slauen</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Al achtmen v <rhyme label="c" type="m">saen</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Een <rhyme label="c" type="m" corresp="#s5:l6">Publicaen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Laet sulcke woluen <rhyme label="b" type="f" corresp="#s5:l2">drauen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Princelicke broeders doet Paulus <rhyme label="a" type="m">raet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Uerblijt v met den <rhyme label="b" type="f">blijden</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Bemint die duecht en laet het <rhyme label="a" type="m" corresp="#s6:l1">quaet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met den droeuen hebt <rhyme label="b" type="f" corresp="#s6:l2">medelijden</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Helpt Christum vrolick <rhyme label="b" type="f" corresp="#s6:l2">strijden</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Doet <rhyme label="c" type="m">onderstant</rhyme></l>
        <l id="s6:l7" met="2" type="-+">Des uwen <rhyme label="c" type="m" corresp="#s6:l6">viant</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Bemintse die v <rhyme label="b" type="f" corresp="#s6:l2">benijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
