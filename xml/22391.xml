  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MEnighen dach, ick segghe <rhyme label="a" type="m">ach</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijn droefheyt wast met <rhyme label="b" type="f">hoopen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Maer int gheclach, hoor ick <rhyme label="a" type="m" corresp="#s1:l1">ghewach</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Compt al tot my <rhyme label="b" type="f" corresp="#s1:l2">gheloopen</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Ghenade siet, crijcht ghy voor <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Door Christum tallen <rhyme label="d" type="f">daghen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Soo u Godt doet <rhyme label="d" type="f" corresp="#s1:l6">ghewaghen</rhyme>:</l>
        <l id="s1:l8" met="4" type="-+">Dit ist gheschal, int aertsche <rhyme label="e" type="m">dal</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Compt tot my al, als u <rhyme label="e" type="m" corresp="#s1:l8">misual</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Met sonden wil <rhyme label="f" type="f">verdraeyen</rhyme>,</l>
        <l id="s1:l11" met="4" type="-+">Cleyn cuddeken ghy, compt vry tot <rhyme label="g" type="m">my</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Ick sal u gantsch <rhyme label="f" type="f" corresp="#s1:l10">verfraeyen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Van my alleyn, leert all <rhyme label="a" type="m">ghemeyn</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ootmoedich zijn van <rhyme label="b" type="f">herten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En denckt certeyn, op mijn woort <rhyme label="a" type="m" corresp="#s2:l1">reyn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Sijt lijdtsamich in <rhyme label="b" type="f" corresp="#s2:l2">smerten</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Mijn last en pack, al met <rhyme label="c" type="m">ghemack</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sult ghy willich <rhyme label="d" type="f">aenueerden</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Met my op deser <rhyme label="d" type="f" corresp="#s2:l6">eerden</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Als ghy zijt, een cleynen <rhyme label="e" type="m">tijt</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">In desen strijt, sal u <rhyme label="e" type="m" corresp="#s2:l8">subijt</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Mijn Vader den Trooster <rhyme label="f" type="f">seynden</rhyme>,</l>
        <l id="s2:l11" met="4" type="-+">Sijnen Gheest goet, die can en <rhyme label="g" type="m">doet</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Allen druck van u <rhyme label="f" type="f" corresp="#s2:l10">wenden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godt sterck en wijs, u sy den <rhyme label="a" type="m">prijs</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Alleene <rhyme label="b" type="f">toeghemeten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Gheeft ons dijn spijs, int <rhyme label="a" type="m" corresp="#s3:l1">Paradijs</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Met Christo te moeghen <rhyme label="b" type="f" corresp="#s3:l2">eten</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Dat is zijn rijck, daer wy <rhyme label="c" type="m">ghelijck</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Met hem sullen <rhyme label="d" type="f">regneren</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En vrolijck <rhyme label="d" type="f" corresp="#s3:l6">iubileren</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Door zijnen gheest, die in dit <rhyme label="e" type="m">foreest</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Ons hier verleest, <rhyme label="e" type="m" corresp="#s3:l8">onbeureest</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Te prijsen Godes <rhyme label="f" type="f">namen</rhyme>,</l>
        <l id="s3:l11" met="4" type="-+">Cranck en ghesont, met hert en <rhyme label="g" type="m">mont</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Die dit begheert spreeckt <rhyme label="f" type="f" corresp="#s3:l10">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
