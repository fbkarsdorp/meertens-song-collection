<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11765</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Rozemond die lag gedoken</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SElden vint men dat <rhyme label="a" type="f">Gebroeders</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Altijdt trecken eene <rhyme label="b" type="m">lijn</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Hanght d'een meer aen 't oogh des <rhyme label="a" type="f" corresp="#s1:l1">Moeders</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Stracks soo salder afgonst <rhyme label="b" type="m" corresp="#s1:l2">zijn</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dat oock haet en nijd hier <rhyme label="c" type="m">sweeft</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Ioseph u een voorbeelt <rhyme label="c" type="m" corresp="#s1:l5">geeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hy vont sijne Broeders <rhyme label="a" type="f">t'samen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die te Dothan by <rhyme label="b" type="m">malkaer</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Stracks een snood verbondt <rhyme label="a" type="f" corresp="#s2:l1">beramen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Doen sy wierden hem <rhyme label="b" type="m" corresp="#s2:l2">gewaer</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Slaen wy desen Droomer <rhyme label="c" type="m">doodt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Domplen wy hem in den <rhyme label="c" type="m" corresp="#s2:l5">sloot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dan vermerckt hy wat sijn <rhyme label="a" type="f">droomen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Wat sijn konst hem helpen <rhyme label="b" type="m">kan</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Laet ons daerom gantsch niet <rhyme label="a" type="f" corresp="#s3:l1">schroomen</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Want geen Mensche weter <rhyme label="b" type="m" corresp="#s3:l2">van</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Seggen wy dat een <rhyme label="c" type="m">gedrocht</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Ioseph heeft om hals <rhyme label="c" type="m" corresp="#s3:l5">gebrocht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Eel geweeten, duysent <rhyme label="a" type="f">tuygen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Pranghde haer ontstelt <rhyme label="b" type="m">gemoedt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die haer boosheyt soo kost <rhyme label="a" type="f" corresp="#s4:l1">buygen</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Dat sy spaerden 't jonge <rhyme label="b" type="m" corresp="#s4:l2">bloedt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Zijnd' haer snoodheyt dus <rhyme label="c" type="m">gestut</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Wierpen s'hem in eene <rhyme label="c" type="m" corresp="#s4:l5">Put</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Hier lagh 't jonge hert te <rhyme label="a" type="f">karmen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Maer 't geweeten had geen <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">'t Was eylacy, en och <rhyme label="a" type="f" corresp="#s5:l1">armen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En haer nijd die scheen <rhyme label="b" type="m" corresp="#s5:l2">geblust</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Ruben sprack u niet <rhyme label="c" type="m">bemorst</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Noch nae 's broeders bloedt niet <rhyme label="c" type="m" corresp="#s5:l5">dorst</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Siet hier komen <rhyme label="a" type="f">d'Ismaliten</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Laet hy zijn een dienstbaer <rhyme label="b" type="m">knecht</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Dan soo kan men 't niemandt <rhyme label="a" type="f" corresp="#s6:l1">wijten</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Dan geschiet den Droomer <rhyme label="b" type="m" corresp="#s6:l2">recht</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Hier wierd Ioseph doe <rhyme label="c" type="m">verkocht</rhyme></l>
        <l id="s6:l6" met="4" type="+-">En in slaverny <rhyme label="c" type="m" corresp="#s6:l5">gebrocht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Nu was aen dees vuyle <rhyme label="a" type="f">sonde</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Noch een logen-plaester <rhyme label="b" type="m">vast</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Dies bestreeck men dese <rhyme label="a" type="f" corresp="#s7:l1">wonde</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Met een schandelijcke <rhyme label="b" type="m" corresp="#s7:l2">quast</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">En men doopter Iosephs <rhyme label="c" type="m">rock</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">In 't bloedt van een <rhyme label="c" type="m" corresp="#s7:l5">Geyte-bock</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Hier gingh 't op een stroom van <rhyme label="a" type="f">weenen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Die oock 't steenen hart <rhyme label="b" type="m">verbrack</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">Vader! Vader! staeckt u <rhyme label="a" type="f" corresp="#s8:l1">steenen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Riepen sy en hout <rhyme label="b" type="m" corresp="#s8:l2">gemack</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Want een Wild heeft hem <rhyme label="c" type="m">verscheurt</rhyme>:</l>
        <l id="s8:l6" met="4" type="+-">Vader! niet mistroostigh <rhyme label="c" type="m" corresp="#s8:l5">treurt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">'t Was geschiet: 't was niet te <rhyme label="a" type="f">weeren</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">'t Hertseer most nu zijn <rhyme label="b" type="m">geleen</rhyme>.</l>
        <l id="s9:l3" met="4" type="+-">Maer Godt wist dit quaet te <rhyme label="a" type="f" corresp="#s9:l1">keeren</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Tot vertroostingh van 't <rhyme label="b" type="m" corresp="#s9:l2">gemeen</rhyme>:</l>
        <l id="s9:l5" met="4" type="+-">'t Quaed van 's Broeders boos <rhyme label="c" type="m">gemoedt</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Keerde Godt weerom tot <rhyme label="c" type="m" corresp="#s9:l5">goedt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">‘O waer liefd' en trouw mach <rhyme label="a" type="f">woonen</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">‘En daer Broeders eenigh <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s10:l3" met="4" type="+-">‘Daer sal Godt dat huys <rhyme label="a" type="f" corresp="#s10:l1">bekroonen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">‘En verjagen 't quaed <rhyme label="b" type="m" corresp="#s10:l2">fenijn</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">‘Want de twist en haet moet <rhyme label="c" type="m">voort</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">‘Als men nae Godts wetten <rhyme label="c" type="m" corresp="#s10:l5">hoort</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
