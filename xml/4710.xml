    <melody>Sus sus sus bergers et bergerettes</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe kan met haer toelating <rhyme label="a" type="f">heelen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">’t Bedreven quaed De Paepse <rhyme label="b" type="m">Kerk</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Nadien God <rhyme label="a" type="f" corresp="#s1:l1">d’overspelen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van Abs’lon noemt zyn eygen <rhyme label="b" type="m" corresp="#s1:l2">werk</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met allen wel: want inde <rhyme label="a" type="f">zonden</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Des bloedschands vande zoon, wierd <rhyme label="b" type="m">mee</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Des Vaders straf <rhyme label="a" type="f" corresp="#s2:l1">bevonden</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">En dit was ’t geen den Hemel <rhyme label="b" type="m" corresp="#s2:l2">dee</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De goedheyd Goods ten hoogsten <rhyme label="a" type="f">haette</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Van Absalon ’t geschende <rhyme label="b" type="m">bloed</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">’t Welk hy doch wou <rhyme label="a" type="f" corresp="#s3:l1">toelaten</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Tot Davids wel verdiende <rhyme label="b" type="m" corresp="#s3:l2">boet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wild u dan op de Schrift niet <rhyme label="a" type="f">rommen</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">Nae dien zy op gelijke <rhyme label="b" type="m">maet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Goods werk wel plag te <rhyme label="a" type="f" corresp="#s4:l1">nommen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">’t Geen ander doed, en hy <rhyme label="b" type="m" corresp="#s4:l2">toelaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Had Ian Calvijn dit waer <rhyme label="a" type="f">genomen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Hy had misschien met Luthers <rhyme label="b" type="m">stoel</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Nu lang te zijnder <rhyme label="a" type="f" corresp="#s5:l1">vromen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Herroupen dit beschaemt <rhyme label="b" type="m" corresp="#s5:l2">gevoel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dan ’t sy hoe ’t sy, herroupt ghy’t <rhyme label="a" type="f">echter</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">(Daer is genade byden <rhyme label="b" type="m">Heer</rhyme>)</l>
        <l id="s6:l3" met="3" type="-+">Eer u den strengen <rhyme label="a" type="f" corresp="#s6:l1">rechter</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Doe boeten zijn geschende <rhyme label="b" type="m" corresp="#s6:l2">eer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
