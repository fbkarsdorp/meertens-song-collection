    <melody>Het is te Gent nu al verkeerd</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">T'Is Bruylof, Bruylof kinders <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Want Lys die gaet met Iacob <rhyme label="a" type="m" corresp="#s1:l1">voort</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Sy sal en Sondagh <rhyme label="b" type="f">trouwen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Maey Smeurs die maeckt haer eenen <rhyme label="b" type="f" corresp="#s1:l3">bouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och wat een geestich lieflijck <rhyme label="a" type="m">paer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Sal dat niet wesen naer een <rhyme label="a" type="m" corresp="#s2:l1">jaer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Want Lys is sot <rhyme label="b" type="f">gheboren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Iacob heeft sijn verstant <rhyme label="b" type="f" corresp="#s2:l3">verloren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Lys die wilt wesen noch wat <rhyme label="a" type="m">vals</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Maer sy heeft eenen scheeven <rhyme label="a" type="m" corresp="#s3:l1">hals</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">t'Ghebreck al van haer <rhyme label="b" type="f">ouders</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En Iacob heeft twee hooghe <rhyme label="b" type="f" corresp="#s3:l3">schouders</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">D'een scheel en d'ander scheef van <rhyme label="a" type="m">mont</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hun neusen met gestelt <rhyme label="a" type="m" corresp="#s4:l1">bevont</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ghelijck de <rhyme label="b" type="f">Callecoenen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Sy grijsen als s'maelcand'ren <rhyme label="b" type="f" corresp="#s4:l3">soenen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Lacht kind'ren, lacht met Iacq en <rhyme label="a" type="m">Lys</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Want morghen sult ghy suycker <rhyme label="a" type="m" corresp="#s5:l1">rijs</rhyme></l>
        <l id="s5:l3" met="3" type="-+">De keele vol toe <rhyme label="b" type="f">eten</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Com, Com, want Iacob is <rhyme label="b" type="f" corresp="#s5:l3">bescheten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
