    <melody>Puisque je vois que mon amour</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">LEeraer, soo groot in <rhyme label="a" type="m">wetenheyt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die ons vertaelt hebt 't woort des <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En dat te recht ons <rhyme label="a" type="m" corresp="#s1:l1">uytgheleyt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">U wy, Hieronyme, <rhyme label="b" type="f" corresp="#s1:l2">vereeren</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Met dit nieuw liedt, die ghy <rhyme label="c" type="m">verlicht</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Met uwe deughden hebt <rhyme label="c" type="m" corresp="#s1:l5">ghesticht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Des Werelts ghelt wellust en <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Hebdy uyt liefde Godts <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dienen zijt ghy ghegaen den <rhyme label="a" type="m" corresp="#s2:l1">Heer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In een woestijn strengh boven <rhyme label="b" type="f" corresp="#s2:l2">maten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Daer hebd' u in 't ghebedt <rhyme label="c" type="m">verheught</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Stadich beschouwt de hoochste <rhyme label="c" type="m" corresp="#s2:l5">vreught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Staegh de trompet in d' oor u <rhyme label="a" type="m">sloegh</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die in den lesten dagh sal <rhyme label="b" type="f">klincken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Nacht die en dagh, laet ende <rhyme label="a" type="m" corresp="#s3:l1">vroegh</rhyme></l>
        <l id="s3:l4" met="4" type="-+">De het ghemoedt u neder <rhyme label="b" type="f" corresp="#s3:l2">sincken</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">De u den Rechters <rhyme label="c" type="m">strenghicheydt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Weghen, wel tot de doodt <rhyme label="c" type="m" corresp="#s3:l5">bereyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Priester gheworden, tot Godts <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Zijt ghy nae Roomen stracks <rhyme label="b" type="f">ghecomen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Waer gh' in sijn brieven dienstich <rhyme label="a" type="m" corresp="#s4:l1">seer</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Damaso waert, die <rhyme label="b" type="f" corresp="#s4:l2">aenghenomen</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Wert om u wijsheydt tot dat <rhyme label="c" type="m">werck</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dat seer was nut aen 's Heeren <rhyme label="c" type="m" corresp="#s4:l5">kerck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer weer verlieft op d' <rhyme label="a" type="m">eenicheydt</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Hebdy u nae de krib <rhyme label="b" type="f">begheven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daer onsen Heer in heeft <rhyme label="a" type="m" corresp="#s5:l1">gheschreyt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Waer oock van u een hemelsch <rhyme label="b" type="f" corresp="#s5:l2">leven</rhyme></l>
        <l id="s5:l5" met="4" type="-+">In alle deughden is <rhyme label="c" type="m">gheleyt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Stekende uyt in <rhyme label="c" type="m" corresp="#s5:l5">lijdsaemheydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doen ghy nu heel waert <rhyme label="a" type="m">uytgheteirt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">'t Vel over 't been maer was <rhyme label="b" type="f">ghespannen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Doen heeft het helsch ghespuys <rhyme label="a" type="m" corresp="#s6:l1">begheert</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Uyt u de suyverheydt te <rhyme label="b" type="f" corresp="#s6:l2">bannen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">En heeft u lichaem seer <rhyme label="c" type="m">beruert</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dat teghen danck u heeft <rhyme label="c" type="m" corresp="#s6:l5">gheduert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Merckelijck u in sin <rhyme label="a" type="m">ghebrocht</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Werden de dochters doen van <rhyme label="b" type="f">Roomen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dat teghen wil den vyandt <rhyme label="a" type="m" corresp="#s7:l1">vroght</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Swaerelijck kost ghy 't vleesch doen <rhyme label="b" type="f" corresp="#s7:l2">toomen</rhyme>;</l>
        <l id="s7:l5" met="4" type="-+">Hoe seer dat ghy daer teghen <rhyme label="c" type="m">street</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Meer ghy en meer die belden <rhyme label="c" type="m" corresp="#s7:l5">leet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nacht ende dacht met eenen <rhyme label="a" type="m">steen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Hebdy doen op u borst <rhyme label="b" type="f">gheslaghen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">'t Bloedt dus ghestort met groot <rhyme label="a" type="m" corresp="#s8:l1">gheween</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Tot Godt den Heer, om te <rhyme label="b" type="f" corresp="#s8:l2">verjaghen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">'s Vyandts ghequel, dat wert <rhyme label="c" type="m">ghestoort</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Doen Godt op 't lest u heeft <rhyme label="c" type="m" corresp="#s8:l5">verhoort</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Nu wort van u in sijnen <rhyme label="a" type="m">throon</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Christus aenschout, die ghy te <rhyme label="b" type="f">voren</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Hier te beschouwen waert <rhyme label="a" type="m" corresp="#s9:l1">ghewoon</rhyme></l>
        <l id="s9:l4" met="4" type="-+">In een vuyl krib, als nieuw <rhyme label="b" type="f" corresp="#s9:l2">gheboren</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Doet ons daer in u volghen <rhyme label="c" type="m">naer</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Om Godt te sien met u eens <rhyme label="c" type="m" corresp="#s9:l5">claer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
