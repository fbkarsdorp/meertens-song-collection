    <tags/>
    <melody>Ik had een gestadig minnetje</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Elck moet een weynigh <rhyme label="a" type="f">singen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van ‘t inwendige <rhyme label="b" type="m">goet</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Het sijn verborgen <rhyme label="a" type="f" corresp="#s1:l1">dingen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Gheplant in het <rhyme label="b" type="m" corresp="#s1:l2">ghemoed</rhyme>’,</l>
        <l id="s1:l5" met="3" type="-+">In die scheppinge <rhyme label="b" type="m" corresp="#s1:l2">soet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Daer heeft den mensch <rhyme label="c" type="f">verkregen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Een Goddelijck <rhyme label="c" type="f" corresp="#s1:l6">bewegen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Door het in blasen <rhyme label="b" type="m" corresp="#s1:l2">vroet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dit vonckje can hem <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hoe hy wandelen <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wil hy tot quaet hem <rhyme label="a" type="f" corresp="#s2:l1">keeren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">’t Ontrust van binnen <rhyme label="b" type="m" corresp="#s2:l2">al</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">‘t Verkondicht sijnen <rhyme label="b" type="m" corresp="#s2:l2">val</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">‘t Is aen Adam <rhyme label="c" type="f">ghebleken</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Doen hy hem ginck <rhyme label="c" type="f" corresp="#s2:l6">versteken</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Vreesende ‘t <rhyme label="b" type="m" corresp="#s2:l2">ongeval</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Meer dan twee duysent <rhyme label="a" type="f">jaren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De werelt hadt <rhyme label="b" type="m">ghestaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Datter geen boecken <rhyme label="a" type="f" corresp="#s3:l1">waren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Want Godt heeft sijn <rhyme label="b" type="m" corresp="#s3:l2">vermaen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Door sijnen Geest <rhyme label="b" type="m" corresp="#s3:l2">ghedaen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Al in het hert van <rhyme label="c" type="f">binnen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Doch haer verdorven <rhyme label="c" type="f" corresp="#s3:l6">sinnen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Waren ‘t niet <rhyme label="b" type="m" corresp="#s3:l2">onderdaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">‘t Vernuft wil hem niet <rhyme label="a" type="f">gheven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Al onder ‘s Geests <rhyme label="b" type="m">gebiet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat brenght den Mensch in <rhyme label="a" type="f" corresp="#s4:l1">sneven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Want als men ‘t wel in <rhyme label="b" type="m" corresp="#s4:l2">siet</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Wat Godt oyt sprack of <rhyme label="b" type="m" corresp="#s4:l2">riet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat cont ghy hier in <rhyme label="c" type="f">leeren</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Wat ghy niet sout <rhyme label="c" type="f" corresp="#s4:l6">begeeren</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Doet dat een ander <rhyme label="b" type="m" corresp="#s4:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">‘t Sal d’Heydenen <rhyme label="a" type="f">oordeelen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">‘t Geen in het herte <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sijn wetten en <rhyme label="a" type="f" corresp="#s5:l1">bevelen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Kennis van goet en <rhyme label="b" type="m" corresp="#s5:l2">quaet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Maer die ‘t licht henen <rhyme label="b" type="m" corresp="#s5:l2">slaet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En wandelt kromme <rhyme label="c" type="f">weghen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Heeft de Consciency <rhyme label="c" type="f" corresp="#s5:l6">teghen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">En Godts beschreven <rhyme label="b" type="m" corresp="#s5:l2">raet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Godt wy in ons <rhyme label="a" type="f">ghevoelen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Als wy luysteren <rhyme label="b" type="m">stil</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Maer door ons eyghen <rhyme label="a" type="f" corresp="#s6:l1">woelen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Soo krijghen wy <rhyme label="b" type="m" corresp="#s6:l2">gheschil</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">d’Inbeeldingh van de <rhyme label="b" type="m" corresp="#s6:l2">wil</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Verleyt onse <rhyme label="c" type="f">ghedachten</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">‘t Ghesicht verliest sijn <rhyme label="c" type="f" corresp="#s6:l6">crachten</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Als door een vremden <rhyme label="b" type="m" corresp="#s6:l2">bril</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">gherechtighe sal <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Vyt sijn gheloove <rhyme label="b" type="m">vroet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Elck is de proef <rhyme label="a" type="f" corresp="#s7:l1">ghegeven</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van sijn eyghen <rhyme label="b" type="m" corresp="#s7:l2">ghemoed</rhyme>’,</l>
        <l id="s7:l5" met="3" type="-+">Wie hier in trou’lijck <rhyme label="b" type="m" corresp="#s7:l2">doet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Godt sal hem meer <rhyme label="c" type="f">verlichten</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En stadigh <rhyme label="c" type="f" corresp="#s7:l6">onder-richten</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Door aenhoudingh van ‘t <rhyme label="b" type="m" corresp="#s7:l2">goet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
