  <author>Johannes Wilhelmus Bussingh</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">De zon is <rhyme label="a" type="f">weggezonken</rhyme>;</l>
        <l id="s1:l2" met="3" type="-+">Wij zien, in <rhyme label="a" type="f" corresp="#s1:l1">hemelvonken</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De Majesteit en <rhyme label="b" type="m">Pracht</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Des Scheppers, dien wij <rhyme label="c" type="f">prijzen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Weêr met de maen <rhyme label="c" type="f" corresp="#s1:l4">verrijzen</rhyme>: -</l>
        <l id="s1:l6" met="3" type="-+">Hoe statig naekt de <rhyme label="b" type="m" corresp="#s1:l3">nacht</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ja, ook in 't aek'lig <rhyme label="a" type="f">duister</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Woont, met een grootschen <rhyme label="a" type="f" corresp="#s2:l1">luister</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Heer van 't gantsch <rhyme label="b" type="m">Heeläl</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Hij, die gewis mijn <rhyme label="c" type="f">zaken</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Schoon 'k slapen moge of <rhyme label="c" type="f" corresp="#s2:l4">waken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als Vader richten <rhyme label="b" type="m" corresp="#s2:l3">zal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mijn God van groote <rhyme label="a" type="f">trouwe</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dien ik, als kind, <rhyme label="a" type="f" corresp="#s3:l1">aenschouwe</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Is in den nacht mijn <rhyme label="b" type="m">lied</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Ik leg blijmoedig <rhyme label="c" type="f">weder</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">In jesus naem, mij <rhyme label="c" type="f" corresp="#s3:l4">neder</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Mijn hart ontrust zich <rhyme label="b" type="m" corresp="#s3:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Gedenk niet aen mijn <rhyme label="a" type="f">zonden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die Uwe hoogheid <rhyme label="a" type="f" corresp="#s4:l1">schonden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">In de onberaden <rhyme label="b" type="m">jeugd</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Mijn hart verfoeije 't <rhyme label="c" type="f">kwade</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Leid mij, door Uw <rhyme label="c" type="f" corresp="#s4:l4">genade</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">ô God! op 't pad der <rhyme label="b" type="m" corresp="#s4:l3">deugd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dat mij Uw Geest toch <rhyme label="a" type="f">heilig'</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Mij leide en mij <rhyme label="a" type="f" corresp="#s5:l1">beveilig'</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Voor 't lichtbetoov'rend <rhyme label="b" type="m">kwaed</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Laet Hij in 't harte <rhyme label="c" type="f">schrijven</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Geloof en Liefde <rhyme label="c" type="f" corresp="#s5:l4">blijven</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En Hoop op God <rhyme label="b" type="m" corresp="#s5:l3">bestaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En, heb ik voor mijn' <rhyme label="a" type="f">zonden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Verzoening dus <rhyme label="a" type="f" corresp="#s6:l1">gevonden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Door jesus dierbaer <rhyme label="b" type="m">bloed</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">In 's weerelds <rhyme label="c" type="f">duisternisse</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Spreekt altijd mijn <rhyme label="c" type="f" corresp="#s6:l4">gewisse</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Wat is mijn Vader <rhyme label="b" type="m" corresp="#s6:l3">goed</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zal mij de slaep, ten <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Vernieuwde krachten <rhyme label="a" type="f" corresp="#s7:l1">geven</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ik slaep dan vrolijk <rhyme label="b" type="m">in</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">Of, zal 't mijn doodslaep <rhyme label="c" type="f">wezen</rhyme>; -</l>
        <l id="s7:l5" met="3" type="-+">Door christus, ('k zal niet <rhyme label="c" type="f" corresp="#s7:l4">vrezen</rhyme>)</l>
        <l id="s7:l6" met="3" type="-+">Is 't sterven mij <rhyme label="b" type="m" corresp="#s7:l3">gewin</rhyme>.</l>
      </lg>
    </lg>
