    <melody>Die mij te drinken gaf</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hey wie wil hooren <rhyme label="a" type="f">singhen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van vreuchden dats een nieu <rhyme label="b" type="m">Liedt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Van een soo loosen <rhyme label="c" type="f">Boer-man</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Die sijn Vrouwtien in dole <rhyme label="b" type="m" corresp="#s1:l2">liet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Boer gingh naer de <rhyme label="a" type="f">Kercke</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Sijn Tresoortje dat hy der toe <rhyme label="b" type="m">sloot</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">In alle soo korten <rhyme label="c" type="f">wijlen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Soo quam daer een Kalis om <rhyme label="b" type="m" corresp="#s2:l2">broot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick heb jou niet te <rhyme label="a" type="f">gheven</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">(Sprack daer dat Vrouwtjen <rhyme label="b" type="m">fijn</rhyme>)</l>
        <l id="s3:l3" met="3" type="-+">Dan een nachje by my te <rhyme label="c" type="f">slapen</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Maer het moster verhoolen <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Och mocht my dat <rhyme label="a" type="f">gebeuren</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">(Sprack daer de Landes-knecht <rhyme label="b" type="m">stout</rhyme>)</l>
        <l id="s4:l3" met="3" type="-+">Ick souder niet willen voor <rhyme label="c" type="f">kiesen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Iou Silver ende root <rhyme label="b" type="m" corresp="#s4:l2">Gout</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy ginck naer haer <rhyme label="a" type="f">slaep-kamer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">De Landes-knecht volghde haer <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sy trock hem van haer mans kleren <rhyme label="c" type="f">aen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En daer mede soo liet sy hem <rhyme label="b" type="m" corresp="#s5:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De Lantsknecht over der heyde <rhyme label="a" type="f">gingh</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Hy hief op en hy sangh een <rhyme label="b" type="m">Liet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Van een soo loosen <rhyme label="c" type="f">Boer-man</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Die sijn Vrouwtjen in doolen <rhyme label="b" type="m" corresp="#s6:l2">liet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De Boer lach in de <rhyme label="a" type="f">Biesen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Hy hoorden de woorden <rhyme label="b" type="m">oprecht</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wat hebje van mijn te <rhyme label="c" type="f">singhen</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Sprack den Boer tot den <rhyme label="b" type="m" corresp="#s7:l2">Landes-knecht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ick heb van jou niet te <rhyme label="a" type="f">singhen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Van jou Vrouwtje en weet ick <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Een al soo leyden <rhyme label="c" type="f">mare</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Is te nacht in mijn droome <rhyme label="b" type="m" corresp="#s8:l2">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Is al soo leyde <rhyme label="a" type="f">mare</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Te nacht in jou drome <rhyme label="b" type="m">gheschiet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Soo gaet en drinckt koel isser de <rhyme label="c" type="f">Wijn</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En melter dats niemandt <rhyme label="b" type="m" corresp="#s9:l2">niet</rhyme>.</l>
      </lg>
    </lg>
  </text>
