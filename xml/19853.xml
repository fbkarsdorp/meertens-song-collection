  <author>Johan van Born</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">'t SY dat ick slaep, 'tzy dat ick <rhyme label="a" type="f">waecke</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">'t Sy dat ick zit, 't zy dat ick <rhyme label="b" type="m">stae</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">'t Sy dat ick swijg of ben in <rhyme label="a" type="f" corresp="#s1:l1">spraecke</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Maer dat ick ben of waer ick <rhyme label="b" type="m" corresp="#s1:l2">gae</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Self onder eeten, onder <rhyme label="c" type="f">drincken</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Ick voor altijt, ich hoor <rhyme label="d" type="m">al-om</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Dees' stem in mijne Ooren <rhyme label="c" type="f" corresp="#s1:l5">klincken</rhyme>:</l>
        <l id="s1:l8" met="4" type="-+">Op op, daer comt den <rhyme label="d" type="m" corresp="#s1:l6">Bruydegom</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">D'uer van zijn comst is my <rhyme label="a" type="f">verborghen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ick twijffel oft sal savonts <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Of smiddernachts of inden <rhyme label="a" type="f" corresp="#s2:l1">Morgen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Of oock by claren <rhyme label="b" type="m" corresp="#s2:l2">Sonne-schijn</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Ick weet den tijt begint te <rhyme label="c" type="f">corten</rhyme></l>
        <l id="s2:l6" met="4" type="-+">De uer alleen de Vader <rhyme label="d" type="m">weet</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Dies wil ick vroegh mijn lendnen <rhyme label="c" type="f" corresp="#s2:l5">schorten</rhyme></l>
        <l id="s2:l8" met="4" type="-+">En houden steets mijn Lamp <rhyme label="d" type="m" corresp="#s2:l6">gereet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wel zaligh sal dien Dienstknecht <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die waeckte en zijnen Heer <rhyme label="b" type="m">verwacht</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Maer wee dien dwaes hy mach wel <rhyme label="a" type="f" corresp="#s3:l1">vresen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die d'hope van zyn comst <rhyme label="b" type="m" corresp="#s3:l2">belacht</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Sy die hem hebbent hert <rhyme label="c" type="f">doorsteecken</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Sullen zijn aenschijn moeten <rhyme label="d" type="m">zien</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Hy sal hem schricklijck aen haer <rhyme label="c" type="f" corresp="#s3:l5">wreken</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">En laes, wie sal haer hulpe <rhyme label="d" type="m" corresp="#s3:l6">bien</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy sullen wenschen dat de <rhyme label="a" type="f">bergen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dat d'heuvelen van swaer <rhyme label="b" type="m">gewicht</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Haer mochten decken en <rhyme label="a" type="f" corresp="#s4:l1">verberghen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Voort onverdraechlijck <rhyme label="b" type="m" corresp="#s4:l2">aenghesicht</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Maer haren wensch sal niet <rhyme label="c" type="f">gheschieden</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Sy sullen roepen om de <rhyme label="d" type="m">doot</rhyme>:</l>
        <l id="s4:l7" met="4" type="-+">Maer selfs de doot sal van haer <rhyme label="c" type="f" corresp="#s4:l5">vlieden</rhyme></l>
        <l id="s4:l8" met="4" type="-+">O jammer en benautheyt <rhyme label="d" type="m" corresp="#s4:l6">groot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe sullen sacken d'hooghe <rhyme label="a" type="f">kruynen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die steyle half en zijgen <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Op 't sterck gheklanc van die <rhyme label="a" type="f" corresp="#s5:l1">basuynen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">En des Archangels stem noch <rhyme label="b" type="m" corresp="#s5:l2">meer</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Hoe sullen haer de herten <rhyme label="c" type="f">beven</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Wanneer zy vanden <rhyme label="d" type="m">Rechter-stoel</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Met smaetheyt werden <rhyme label="c" type="f" corresp="#s5:l5">wechgedreven</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Ghestort in d'Helsche <rhyme label="d" type="m" corresp="#s5:l6">Sulpherpoel</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer ghy o mensch die met <rhyme label="a" type="f">verlanghen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">In hoop des Heeren comst <rhyme label="b" type="m">verbeyt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die om den Bruydegon <rhyme label="a" type="f" corresp="#s6:l1">t'ontfanghen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">'t Best dat ghy cond u maeckt <rhyme label="b" type="m" corresp="#s6:l2">bereyt</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Hoe sal u hert van vreugd dan <rhyme label="c" type="f">springen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Hoe sal uw hooft dan gaen om <rhyme label="d" type="m">hoogh</rhyme>:</l>
        <l id="s6:l7" met="4" type="-+">Hoe sal dan nae de Wolcken <rhyme label="c" type="f" corresp="#s6:l5">dringhen</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Uw sterrend en verlangend <rhyme label="d" type="m" corresp="#s6:l6">oogh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den Wolck-troon sult ghy zien <rhyme label="a" type="f">bereyden</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Daer op de Heer sal zitten <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die duysenden die hem <rhyme label="a" type="f" corresp="#s7:l1">gheleyden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Sult gy oock zien rontsom hem <rhyme label="b" type="m" corresp="#s7:l2">staen</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">Dan sult ghy werden <rhyme label="c" type="f">opgenomen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En uwen Heer gaen int <rhyme label="d" type="m">gemoet</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Die met veel grooter glans sal <rhyme label="c" type="f" corresp="#s7:l5">comen</rhyme></l>
        <l id="s7:l8" met="4" type="-+">Als 't groote licht der werelt <rhyme label="d" type="m" corresp="#s7:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sijn claerheyt sal u gantsch <rhyme label="a" type="f">omvanghen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Om schijnen sal u 't Hemelsch <rhyme label="b" type="m">licht</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">O wat een vreucht sult ghy <rhyme label="a" type="f" corresp="#s8:l1">ontfangen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Door zijn soo vriendelijck <rhyme label="b" type="m" corresp="#s8:l2">ghesicht</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">'t Aenschouwen van zijn clare <rhyme label="c" type="f">Ooghen</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Sal dringen door uw <rhyme label="d" type="m">ingewant</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Uw tranen sal hy selfs <rhyme label="c" type="f" corresp="#s8:l5">afdrooghen</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Afwisschen met zijn sachte <rhyme label="d" type="m" corresp="#s8:l6">hant</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sijn soete stemme sult gy <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Uyt al die Hemelsche <rhyme label="b" type="m">Musijck</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Comt hier mijns Vaders <rhyme label="a" type="f" corresp="#s9:l1">uytvercooren</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Comt ziet gheniet het <rhyme label="b" type="m" corresp="#s9:l2">Coninckrijck</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Comt neemt den Hemel voor uw <rhyme label="c" type="f">woningh</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Die u voor langh is <rhyme label="d" type="m">toebereyt</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Elck van u sal hier zijn een <rhyme label="c" type="f" corresp="#s9:l5">Coningh</rhyme></l>
        <l id="s9:l8" met="4" type="-+">En heerschen in der <rhyme label="d" type="m" corresp="#s9:l6">eeuwicheydt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Heer geeft dat ick uw <rhyme label="a" type="f">openbaringh</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Met vrees' en oock met vreucht <rhyme label="b" type="m">verwacht</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat my den dach van uw <rhyme label="a" type="f" corresp="#s10:l1">verclaringh</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Niet en betrappe <rhyme label="b" type="m" corresp="#s10:l2">onverdacht</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Geeft dat ick voor u comst mach <rhyme label="c" type="f">duchten</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Nochtans die wachten <rhyme label="d" type="m">onbeschroomt</rhyme></l>
        <l id="s10:l7" met="4" type="-+">Dat ick met hertelijcke <rhyme label="c" type="f" corresp="#s10:l5">suchten</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">Mach seggen Heere Jesu <rhyme label="d" type="m" corresp="#s10:l6">coomt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
