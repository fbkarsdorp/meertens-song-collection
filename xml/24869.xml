  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Bedwonghen haet een zalich <rhyme label="a" type="m">wijf</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Herte ende zin ziele ende <rhyme label="a" type="m" corresp="#s1:l1">lijf</rhyme></l>
        <l id="s1:l3" met="3" type="-+">So minnentlike <rhyme label="b" type="f">vaste</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Dat ic moet bliven even <rhyme label="a" type="m" corresp="#s1:l1">stijf</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ghestade in allen <rhyme label="b" type="f" corresp="#s1:l3">laste</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Allein bestu mijns leits <rhyme label="a" type="m" corresp="#s1:l1">verdrijf</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Mijn liden in mijn herte <rhyme label="a" type="m" corresp="#s1:l1">strijf</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Dat es mijn hoochste <rhyme label="b" type="f" corresp="#s1:l3">raste</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als ic niet bi u bem <rhyme label="a" type="m">gherijf</rhyme></l>
        <l id="s2:l2" met="4" type="+-">So trueric arem man <rhyme label="a" type="m" corresp="#s2:l1">keitijf</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ghelijc den vreimden <rhyme label="b" type="f">gaste</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In trauwen mi ghestade <rhyme label="a" type="m" corresp="#s2:l1">blijf</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Daer toe mi minne <rhyme label="b" type="f" corresp="#s2:l3">paste</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Bedwonghen haet een zalich <rhyme label="a" type="m" corresp="#s2:l1">wijf</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Herte ende zin ziele ende <rhyme label="a" type="m" corresp="#s2:l1">lijf</rhyme></l>
        <l id="s2:l8" met="3" type="-+">So minnentlike <rhyme label="b" type="f" corresp="#s2:l3">vaste</rhyme></l>
      </lg>
    </lg>
