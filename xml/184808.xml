  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SIet menschen, wie gy <rhyme label="a" type="m">syt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Godt die voor u gaet <rhyme label="b" type="f">sterven</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Op dat gy leeft <rhyme label="a" type="m" corresp="#s1:l1">altydt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt Godt het leven <rhyme label="b" type="f" corresp="#s1:l2">derven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy waeter sweet, en <rhyme label="a" type="m">bloedt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In t'Hof van <rhyme label="b" type="f">Oliveten</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Den schrick van syn <rhyme label="a" type="m" corresp="#s2:l1">gemoedt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Heeft hem ter aerd' <rhyme label="b" type="f" corresp="#s2:l2">gesmeten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe valt t'onnoosel <rhyme label="a" type="m">Lam</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In boose Jodens <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die, hem als vier en <rhyme label="a" type="m" corresp="#s3:l1">vlam</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wegh-rucken in de <rhyme label="b" type="f" corresp="#s3:l2">banden</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Voor wiÃ«ns <rhyme label="a" type="m">Rechter-stoel</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sal heel de wereldt <rhyme label="b" type="f">beven</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Wordt tusschen vreedt <rhyme label="a" type="m" corresp="#s4:l1">gewoel</rhyme></l>
        <l id="s4:l4" met="3" type="-+">De Rechters <rhyme label="b" type="f" corresp="#s4:l2">aengegeven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy trappelen op <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Onteeren syne <rhyme label="b" type="f">wangen</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">t'Gelaet wordt tusschen <rhyme label="a" type="m" corresp="#s5:l1">spot</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met vuyligheydt <rhyme label="b" type="f" corresp="#s5:l2">behangen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Daer staet heel naekt den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Kryght geesselen, en <rhyme label="b" type="f">slaegen</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Vyf-duysent, en noch <rhyme label="a" type="m" corresp="#s6:l1">meer</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Heeft hy voor ons <rhyme label="b" type="f" corresp="#s6:l2">verdraegen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Heel t'lichaem is een <rhyme label="a" type="m">wondt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">De raserny blyft <rhyme label="b" type="f">gloeyen</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Siet t'dierbaer bloedt daer <rhyme label="a" type="m" corresp="#s7:l1">rondt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Gelyck een beke <rhyme label="b" type="f" corresp="#s7:l2">vloeyen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Men print de doorne <rhyme label="a" type="m">Kroon</rhyme></l>
        <l id="s8:l2" met="3" type="-+">In t'diepste van syn <rhyme label="b" type="f">herssen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die, als hy staet ten <rhyme label="a" type="m" corresp="#s8:l1">thoon</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Het bloedt rondt <rhyme label="b" type="f" corresp="#s8:l2">uyt-doet-perssen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hy wordt self, soo <rhyme label="a" type="m">mismaeckt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Gepraemt syn Kruys te <rhyme label="b" type="f">draegen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Waer aen hy voor ons <rhyme label="a" type="m" corresp="#s9:l1">naeckt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Met naegels is <rhyme label="b" type="f" corresp="#s9:l2">geslaegen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Van pyn beswyckt het <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Godt sterft door <rhyme label="b" type="f">liefde-wonden</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">O Jesu, door uw' <rhyme label="a" type="m" corresp="#s10:l1">smert</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Vergeeft doch al myn <rhyme label="b" type="f" corresp="#s10:l2">sonden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
