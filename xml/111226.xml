  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Een Bakker en een <rhyme label="a" type="m">Molenaar</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat zyn twee vroome <rhyme label="b" type="m">Lien</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Het waren dieven met <rhyme label="a" type="m" corresp="#s1:l1">malkaar</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ik heb 't wel <rhyme label="b" type="m" corresp="#s1:l2">gezien</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Den Bakker en den <rhyme label="a" type="m" corresp="#s1:l1">Molenaar</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Die leggen in Disput te <rhyme label="a" type="m" corresp="#s1:l1">gaar</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Hoord aan, hoord <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Hans worst zal op Theater <rhyme label="c" type="m" corresp="#s1:l7">staan</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">'t Spel zal beginne <rhyme label="c" type="m" corresp="#s1:l7">gaan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat hebt gy my <rhyme label="a" type="m">verweeten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Bakker met u <rhyme label="b" type="m">verstand</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ik zie aan u <rhyme label="a" type="m" corresp="#s2:l1">Planeeten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gy zyt een <rhyme label="b" type="m" corresp="#s2:l2">Dwingeland</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ik zie s' avonds en smorgens <rhyme label="a" type="m" corresp="#s2:l1">vroeg</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Of 'er zal komen Wind <rhyme label="a" type="m" corresp="#s2:l1">genoeg</rhyme></l>
        <l id="s2:l7" met="2" type="-+">o Zot, o <rhyme label="c" type="m">Zot</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Gaat by den Ouden in u <rhyme label="c" type="m" corresp="#s2:l7">Kot</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Eer dat men u <rhyme label="c" type="m" corresp="#s2:l7">bespot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wie komt my <rhyme label="a" type="m">afronteren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ziet valsch in u <rhyme label="b" type="m">aanschyn</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Een brave Man van <rhyme label="a" type="m" corresp="#s3:l1">Eeren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Koopt een Flesje <rhyme label="b" type="m" corresp="#s3:l2">Wyn</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Betaalen zo wel als gy <rhyme label="a" type="m" corresp="#s3:l1">Maat</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Mulder al u gekke <rhyme label="a" type="m" corresp="#s3:l1">praat</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">'t Is niet, 't is <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Uw Ezel die roept Kieka <rhyme label="c" type="m" corresp="#s3:l7">ziet</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Hy doet wat men <rhyme label="c" type="m" corresp="#s3:l7">gebied</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Myn Ezel die heeft <rhyme label="a" type="m">ooren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">De Bakker is uw <rhyme label="b" type="m">Broer</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ik wil daar aan niet <rhyme label="a" type="m" corresp="#s4:l1">stooren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hy maakt dikwils <rhyme label="b" type="m" corresp="#s4:l2">rumoer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ey roept Kieka, hy draait hem <rhyme label="a" type="m" corresp="#s4:l1">om</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Hy wenscht den Bakker <rhyme label="a" type="m" corresp="#s4:l1">wellekom</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Beleeft, <rhyme label="c" type="m">Beleeft</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Bakker van u gestoolen <rhyme label="c" type="m" corresp="#s4:l7">Meel</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Den Ezel nog wat <rhyme label="c" type="m" corresp="#s4:l7">geeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Geeft u Ezel zelf <rhyme label="a" type="m">Eeten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">De Mulder steelt <rhyme label="b" type="m">genoeg</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ik heb het niet <rhyme label="a" type="m" corresp="#s5:l1">vergeeten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Van 't geen gy my <rhyme label="b" type="m" corresp="#s5:l2">ontdroeg</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Over een Jaar stool gy ses <rhyme label="a" type="m" corresp="#s5:l1">steen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Van my maar een Zak <rhyme label="a" type="m" corresp="#s5:l1">alleen</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Wel Dief, Wel <rhyme label="c" type="m">Dief</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Gy neemt 'er uit tot u <rhyme label="c" type="m" corresp="#s5:l7">gerief</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Naar u lust en <rhyme label="c" type="m" corresp="#s5:l7">belief</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Bakker ik moet u <rhyme label="a" type="m">pryzen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Al u <rhyme label="b" type="m">regtvaardigheid</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Uw lof en eer <rhyme label="a" type="m" corresp="#s6:l1">aanwyzen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wagt maar een weinig <rhyme label="b" type="m" corresp="#s6:l2">tyd</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Gy bakt my laastmaal <rhyme label="a" type="m" corresp="#s6:l1">Meel</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En knipte van myn goed te <rhyme label="a" type="m" corresp="#s6:l1">veel</rhyme></l>
        <l id="s6:l7" met="2" type="-+">Hoor aan, hoor <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Den Bakker is een eerlyk <rhyme label="c" type="m" corresp="#s6:l7">man</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Die ook niet veel steelen <rhyme label="c" type="m" corresp="#s6:l7">kan</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Molenaar wilt niet <rhyme label="a" type="m">raazen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Uw zaaken zyn <rhyme label="b" type="m">Publyk</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Want geene Mulders <rhyme label="a" type="m" corresp="#s7:l1">Baazen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Leeven zonder <rhyme label="b" type="m" corresp="#s7:l2">practyk</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Gy houd mee van 't Konings <rhyme label="a" type="m" corresp="#s7:l1">deel</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Dan steelt gy nog braaf graan en <rhyme label="a" type="m" corresp="#s7:l1">Meel</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Molenaar, <rhyme label="c" type="m">Molenaar</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Gy gaat te biegt maar eens in 't <rhyme label="c" type="m" corresp="#s7:l7">Jaar</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Dan weegt uw pak niet <rhyme label="c" type="m" corresp="#s7:l7">zwaar</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel bakker is dat <rhyme label="a" type="m">spreeken</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Gy klapt gelyk een <rhyme label="b" type="m">Zot</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Ziet maar na u <rhyme label="a" type="m" corresp="#s8:l1">gebreken</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dat volgens uw <rhyme label="b" type="m" corresp="#s8:l2">Gebod</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Gy bakt het brood ook wel te <rhyme label="a" type="m" corresp="#s8:l1">ligt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">De fynste blom is 'er uit <rhyme label="a" type="m" corresp="#s8:l1">gefist</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">'t Is gewis, 't is <rhyme label="c" type="m">gewis</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Bolleknyper gaat na <rhyme label="c" type="m" corresp="#s8:l7">huis</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Of gy raakt hier <rhyme label="c" type="m" corresp="#s8:l7">Confuis</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De duivel zal uw <rhyme label="a" type="m">tikken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Mulder met uwe <rhyme label="b" type="m">zak</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Lucifer zal u <rhyme label="a" type="m" corresp="#s9:l1">pikken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Bakker gy krijgt een <rhyme label="b" type="m" corresp="#s9:l2">pak</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Bollemand en hoed die vloog <rhyme label="a" type="m" corresp="#s9:l1">aldaar</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">De Bakker op de <rhyme label="a" type="m" corresp="#s9:l1">Molenaar</rhyme>,</l>
        <l id="s9:l7" met="2" type="-+">'t was Raar, 't was <rhyme label="c" type="m">raar</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">De Bakker sloeg den <rhyme label="c" type="m" corresp="#s9:l7">Molenaar</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Hy kreeg zyn <rhyme label="c" type="m" corresp="#s9:l7">Nieuwejaar</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De Bakker is een <rhyme label="a" type="m">rare</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">De Molenaar zweeg <rhyme label="b" type="m">stil</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">'t Zyn twee dieven te <rhyme label="a" type="m" corresp="#s10:l1">gaare</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Gedaan was het <rhyme label="b" type="m" corresp="#s10:l2">verschil</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Nu komen zy wel <rhyme label="a" type="m" corresp="#s10:l1">overeen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Wie dat de grootste dieven <rhyme label="a" type="m" corresp="#s10:l1">scheen</rhyme>,</l>
        <l id="s10:l7" met="2" type="-+">Ja maat, Ja <rhyme label="c" type="m">maat</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">Geen wysgeleerde <rhyme label="c" type="m" corresp="#s10:l7">Advocaat</rhyme>,</l>
        <l id="s10:l9" met="3" type="-+">En is daar toe in <rhyme label="c" type="m" corresp="#s10:l7">staat</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Bakker wil <rhyme label="a" type="m">oppassen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Weegt uw brood niet te <rhyme label="b" type="m">ligt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Zy zullen uw <rhyme label="a" type="m" corresp="#s11:l1">verrassen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Al met uw slegt <rhyme label="b" type="m" corresp="#s11:l2">gewigt</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Meet een doe zag hy Joosje <rhyme label="a" type="m" corresp="#s11:l1">staan</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Sprak Bakker jy moet met my <rhyme label="a" type="m" corresp="#s11:l1">gaan</rhyme>,</l>
        <l id="s11:l7" met="2" type="-+">Myn heer, Myn <rhyme label="c" type="m">heer</rhyme>,</l>
        <l id="s11:l8" met="4" type="-+">Ik en steel noit <rhyme label="c" type="m" corresp="#s11:l7">nimmermeer</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">'t Is voor de laaste <rhyme label="c" type="m" corresp="#s11:l7">keer</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ik moet uw <rhyme label="a" type="m">waarschouwen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Bakker en <rhyme label="b" type="m">Molenaar</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Wilt dat vers <rhyme label="a" type="m" corresp="#s12:l1">onthouwen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Spiegelt uw <rhyme label="b" type="m" corresp="#s12:l2">allegaar</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Koop 'er tog een Boekje <rhyme label="a" type="m" corresp="#s12:l1">van</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Ik bid uw laat het steelen <rhyme label="a" type="m" corresp="#s12:l1">dan</rhyme>,</l>
        <l id="s12:l7" met="2" type="-+">Ja ziet, Ja <rhyme label="c" type="m">ziet</rhyme>,</l>
        <l id="s12:l8" met="4" type="-+">'t Is in Gelderland <rhyme label="c" type="m" corresp="#s12:l7">geschiet</rhyme>,</l>
        <l id="s12:l9" met="3" type="-+">Zo als myn is <rhyme label="c" type="m" corresp="#s12:l7">bediet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
