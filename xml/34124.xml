  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Beminde, <rhyme label="a" type="f">Dorinde</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Thoont my eens u soet <rhyme label="b" type="m">ghelaet</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Schoonder als is den <rhyme label="b" type="m" corresp="#s1:l2">dagheraet</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Lief, lief, siet naer my eens <rhyme label="c" type="m">om</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Siet naer uwen <rhyme label="d" type="m">vrint</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Die u soo <rhyme label="d" type="m" corresp="#s1:l5">bemint</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Schoone <rhyme label="c" type="m" corresp="#s1:l4">maeghden-blom</rhyme>.</l>
        <l id="s1:l8" met="4" type="+-">Ach! ach! siet naer my eens <rhyme label="c" type="m" corresp="#s1:l4">om</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ach maghet, ick <rhyme label="a" type="f">klaghet</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dat ick haeck naer u <rhyme label="b" type="m">aenscheyn</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als den Hert doet naer die <rhyme label="b" type="m" corresp="#s2:l2">fonteyn</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Lief, lief, hoort naer myne <rhyme label="c" type="m">klacht</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">Hoort naer uwen <rhyme label="d" type="m">vrint</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Die u soo <rhyme label="d" type="m" corresp="#s2:l5">bemint</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Maghet weert <rhyme label="c" type="m" corresp="#s2:l4">gheacht</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Lief, lief, hoort naer myne <rhyme label="c" type="m" corresp="#s2:l4">klacht</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Myn herte, leydt <rhyme label="a" type="f">smerte</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Als den Salamander <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Brandt in de liefde myn <rhyme label="b" type="m" corresp="#s3:l2">ghemoet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Lief, lief, blyft ghy dan <rhyme label="c" type="m">verkouwt</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Blyft u hert <rhyme label="d" type="m">versteent</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Als u dienaer <rhyme label="d" type="m" corresp="#s3:l5">weent</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Die op u <rhyme label="c" type="m" corresp="#s3:l4">betrouwt</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Lief, lief blyft ghy dan <rhyme label="c" type="m" corresp="#s3:l4">verkouwt</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Myn beden, zyn <rhyme label="a" type="f">heden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dat ghy somtydts van ter <rhyme label="b" type="m">syd'</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Winckt een lieffelyck oogh op <rhyme label="b" type="m" corresp="#s4:l2">my</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Lief, lief, gunt my dese <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Dat u soet <rhyme label="d" type="m">ghesicht</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Eens myn hert <rhyme label="d" type="m" corresp="#s4:l5">verlicht</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">En myn ziel <rhyme label="c" type="m" corresp="#s4:l4">verheucht</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Lief, lief, gunt my dese <rhyme label="c" type="m" corresp="#s4:l4">vreucht</rhyme>.</l>
      </lg>
    </lg>
  </text>
