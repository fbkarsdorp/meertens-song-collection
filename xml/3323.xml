  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Bewijst al liefde groot en <rhyme label="a" type="m">cleyn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">De arme leden nu <rhyme label="a" type="m" corresp="#s1:l1">ghemeyn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Van Cristum dier <rhyme label="b" type="f">bevolen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Want ghy in hem sijt een <rhyme label="c" type="m">lichaem</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Als kinders goet, doet dienst <rhyme label="c" type="m" corresp="#s1:l4">bequaem</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Tot troost voor die noch <rhyme label="b" type="f" corresp="#s1:l3">doolen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">lieft ghy u behoeder het <rhyme label="d" type="m">hooft</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Dat ghy in hem oock recht <rhyme label="d" type="m" corresp="#s1:l7">gelooft</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Bewijst <rhyme label="e" type="f">barmherticheden</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Dan zijn leden veel in <rhyme label="f" type="m">'tghetal</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Voor die nu troost behooven <rhyme label="f" type="m" corresp="#s1:l10">al</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Spijs mildich tot hen <rhyme label="e" type="f" corresp="#s1:l9">eden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Lenet u naesten in <rhyme label="a" type="m">ootmoet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Neemt haerder aen ras metter <rhyme label="a" type="m" corresp="#s2:l1">spoet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maeckt u vrienden op <rhyme label="b" type="f">aerden</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Van d'onrechtvaerdighen <rhyme label="c" type="m">rijckdom</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Godt salt u loonen <rhyme label="c" type="m" corresp="#s2:l4">wederom</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In zijn woonstee vol <rhyme label="b" type="f" corresp="#s2:l3">waerden</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Daerom speurt barmhertich te <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Ghy vint barmherticheyt oock <rhyme label="d" type="m" corresp="#s2:l7">fijn</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Het leven ende <rhyme label="e" type="f">eere</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Dus siet u broeder vrientlick <rhyme label="f" type="m">aen</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Wilt doch totten bedruckten <rhyme label="f" type="m" corresp="#s2:l10">gaen</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Troost hen u leden <rhyme label="e" type="f" corresp="#s2:l9">teere</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die benout en ellendich <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Crepelen oude blenden <rhyme label="a" type="m" corresp="#s3:l1">gheeft</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Der heylsaem <rhyme label="b" type="f">huysghenooten</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Doch gaerne weest herbergich <rhyme label="c" type="m">haer</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Ghedenckt aen den verdruckten <rhyme label="c" type="m" corresp="#s3:l4">swaer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Als meed' verdruckt, <rhyme label="b" type="f" corresp="#s3:l3">verstooten</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Daerom u arme leden <rhyme label="d" type="m">troost</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Dat hen ghebreck u mede <rhyme label="d" type="m" corresp="#s3:l7">noost</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Eert den Heer van u <rhyme label="e" type="f">goede</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Door liefde tot u naesten <rhyme label="f" type="m">hier</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Bemint hen als u selven <rhyme label="f" type="m" corresp="#s3:l10">fier</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Met eenen blijden <rhyme label="e" type="f" corresp="#s3:l9">moede</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Met broederlicke liefde <rhyme label="a" type="m">cloock</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Doet tot u leden nu <rhyme label="a" type="m" corresp="#s4:l1">versoock</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Met milde <rhyme label="b" type="f">caritaten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Want soo wie hier nu mildich <rhyme label="c" type="m">sayt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dat die oock seer mildichlick <rhyme label="c" type="m" corresp="#s4:l4">mayt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dus troost die <rhyme label="b" type="f" corresp="#s4:l3">desolaten</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Soo sal u licht door breecken <rhyme label="d" type="m">snel</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Al door die duysternisse <rhyme label="d" type="m" corresp="#s4:l7">wel</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">God sal u doorgaens <rhyme label="e" type="f">leyden</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Sult zijn als een springent <rhyme label="f" type="m">fonteyn</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Diet noyt en feylt aen water <rhyme label="f" type="m" corresp="#s4:l10">reyn</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Dus biet troost sonder <rhyme label="e" type="f" corresp="#s4:l9">beyden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghy princelicke borgers <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ghedenckt wat ghy vercrijcht tot <rhyme label="a" type="m" corresp="#s5:l1">loon</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hebt ghy soo lief de <rhyme label="b" type="f">Armen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">als u selven, dit wel <rhyme label="c" type="m">versint</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Ghy wert gheseghent oock <rhyme label="c" type="m" corresp="#s5:l4">bemint</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">V troost sal God <rhyme label="b" type="f" corresp="#s5:l3">erbarmen</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Die ghy zijn leden hebt <rhyme label="d" type="m">ghedaen</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Hy sal u in zijn rijck <rhyme label="d" type="m" corresp="#s5:l7">ontfaen</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Soo Schriftuyr gaet <rhyme label="e" type="f">bewijsen</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Als ghy hier troost d'Armen <rhyme label="f" type="m">toeveucht</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Gy 'tloon verwacht, Noyt meerder <rhyme label="f" type="m" corresp="#s5:l10">vreucht</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">En eeuwich <rhyme label="e" type="f" corresp="#s5:l9">veriolijsen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
