  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Schepper aller sterren <rhyme label="a" type="m">klaer</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Een licht der Christelijcker <rhyme label="a" type="m" corresp="#s1:l1">schaer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Christe onsen Verlosser <rhyme label="b" type="m">goet</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Hoort dat wy bidden met <rhyme label="b" type="m" corresp="#s1:l3">ootmoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy waert bedroefdt dat door de <rhyme label="a" type="m">doodt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">De werelt was in grooten <rhyme label="a" type="m" corresp="#s2:l1">noodt</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Ghy quaemt ons maken al <rhyme label="b" type="m">ghesondt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die na der ziel waren <rhyme label="b" type="m" corresp="#s2:l3">gewondt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Doen 's wereldts avont-stond <rhyme label="a" type="m">verscheen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Quaemt ghy ons Bruydegom <rhyme label="a" type="m" corresp="#s3:l1">aentreen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Wt uwe Moeder <rhyme label="b" type="m">eerbaerlijck</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die Maghet oock bleef <rhyme label="b" type="m" corresp="#s3:l3">suyverlijck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Voor u gheweldt en stercke <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die kni'en moet buygen all' <rhyme label="a" type="m" corresp="#s4:l1">geslacht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">In Hemel en in 't Aerdsche <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die u zijn onderdanigh <rhyme label="b" type="m" corresp="#s4:l3">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Heylighen Heer <rhyme label="a" type="m">ghebenedijdt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Rechter van toekomenden <rhyme label="a" type="m" corresp="#s5:l1">tijdt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Wy bidden u doet ons <rhyme label="b" type="m">bystandt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Teghen 't ghewelt van den <rhyme label="b" type="m" corresp="#s5:l3">vyandt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Lof, eere, kracht en glori' <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Zy Godt den Vader, en sijn' <rhyme label="a" type="m" corresp="#s6:l1">Soon</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die met den Heil'gen Geest <rhyme label="b" type="m">divijn</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Eewigh, Eenigh, Drievuldigh <rhyme label="b" type="m" corresp="#s6:l3">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
