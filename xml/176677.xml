    <melody>Schoon liefje jent zeer excellent</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ick roep u o Hemelsche Vader <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt mijn gheloove <rhyme label="b" type="f">stercken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op dat ick mach vromelijck blijven <rhyme label="a" type="m" corresp="#s1:l1">staen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Met u waerheyt <rhyme label="a" type="m" corresp="#s1:l1">aen-ghedaen</rhyme>,</l>
        <l id="s1:l5" met="6" type="-+">Al sonder af te gaen, och God wilt in my <rhyme label="b" type="f" corresp="#s1:l2">wercken</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Heer in den noot doet my <rhyme label="a" type="m">bystant</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gheeft mijn mondt om te <rhyme label="b" type="f">spreecken</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ick ben hier in mijn vyanden <rhyme label="a" type="m" corresp="#s2:l1">handt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">In der wreeden Leeuwen <rhyme label="a" type="m" corresp="#s2:l1">tand</rhyme>,</l>
        <l id="s2:l5" met="6" type="-+">U heylig woort playsant, doet my met kragt <rhyme label="b" type="f" corresp="#s2:l2">uytbreken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn kragt is seer kleyn, u Heer <rhyme label="a" type="m">bekent</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Gy wilt my doch <rhyme label="b" type="f">aenveerden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Uwen gheest der waerheyt in my <rhyme label="a" type="m" corresp="#s3:l1">sendt</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Ghy zijt mijn <rhyme label="a" type="m" corresp="#s3:l1">fondament</rhyme>,</l>
        <l id="s3:l5" met="6" type="-+">Weest my altijt ontrent, dat ik doch mag <rhyme label="b" type="f" corresp="#s3:l2">volheerden</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Heer spreekt tot my, en weest niet <rhyme label="a" type="m">bevreest</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En willet oock niet <rhyme label="b" type="f">beeven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Al vindt ghy u hier in een wilt <rhyme label="a" type="m" corresp="#s4:l1">foreest</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">By den Draeck en oock dat <rhyme label="a" type="m" corresp="#s4:l1">Beest</rhyme>,</l>
        <l id="s4:l5" met="6" type="-+">Ick sal u mijnen gheest tot een vertrooster <rhyme label="b" type="f" corresp="#s4:l2">gheven</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe komt dat gy u voor menschen <rhyme label="a" type="m">vervaert</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die doch moeten <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ick hebbe u uyt verre landen <rhyme label="a" type="m" corresp="#s5:l1">vergaert</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Als mijn oogh-appel <rhyme label="a" type="m" corresp="#s5:l1">bewaert</rhyme>,</l>
        <l id="s5:l5" met="6" type="-+">Gy zijt van mijne aert, gy en sult niet <rhyme label="b" type="f" corresp="#s5:l2">bederven</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Keert u tot my, mijn leden <rhyme label="a" type="m">teer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Soo meught ghy zaligh <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En vreest noch en beeft voortaen niet <rhyme label="a" type="m" corresp="#s6:l1">meer</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Ick ben alleen u <rhyme label="a" type="m" corresp="#s6:l1">Heer</rhyme>,</l>
        <l id="s6:l5" met="6" type="-+">En wijkt niet van mijn leer, o gy mijn volck <rhyme label="b" type="f" corresp="#s6:l2">ghepresen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Komt al tot my die hier <rhyme label="a" type="m">arbeyt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Belast zijt en <rhyme label="b" type="f">beladen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Een eeuwighe vreught is u <rhyme label="a" type="m" corresp="#s7:l1">bereydt</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Al door <rhyme label="a" type="m" corresp="#s7:l1">ghenadigheydt</rhyme>,</l>
        <l id="s7:l5" met="6" type="-+">‘k Sal u met klaer bescheyt, uyt liefden <rhyme label="b" type="f" corresp="#s7:l2">versaden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">8/ Ghy zijt mijn vrienden, is ‘t dat ghy <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Al dat ick u <rhyme label="b" type="f">ghebiede</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Ick late voor u mijn leven <rhyme label="a" type="m" corresp="#s8:l1">goet</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Mijn uyt-verkoren <rhyme label="a" type="m" corresp="#s8:l1">vroet</rhyme>,</l>
        <l id="s8:l5" met="6" type="-+">Uyt grooter liefden soet, dat dit van my <rhyme label="b" type="f" corresp="#s8:l2">geschiede</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O Zyon om uwen ‘t wille, <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Heb ick soo veel <rhyme label="b" type="f">gheleden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Ik heb u ghegheven mijn Goddelijck <rhyme label="a" type="m" corresp="#s9:l1">woort</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Om te brengen in <rhyme label="a" type="m" corresp="#s9:l1">accoort</rhyme>,</l>
        <l id="s9:l5" met="6" type="-+">Als gy daer laeght versmoort, in alle u <rhyme label="b" type="f" corresp="#s9:l2">boosheden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O Zyon mijn alderliefste <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En wilt u doch niet <rhyme label="b" type="f">vresen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Voor die ‘t Lichaem vervolgen oft <rhyme label="a" type="m" corresp="#s10:l1">doo’n</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Ick sal u in mijn <rhyme label="a" type="m" corresp="#s10:l1">throon</rhyme></l>
        <l id="s10:l5" met="6" type="-+">Gheven des levens Kroon, daer grote vreugt sal <rhyme label="b" type="f" corresp="#s10:l2">wesen</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O Zyon mijn alderliefste <rhyme label="a" type="m">Bruyt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Ia boven alle <rhyme label="b" type="f">Vrouwen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Mijn Goddelijck woort in u herte <rhyme label="a" type="m" corresp="#s11:l1">sluyt</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">En laet van u niet <rhyme label="a" type="m" corresp="#s11:l1">uyt</rhyme>,</l>
        <l id="s11:l5" met="6" type="-+">Mijn alderliefste spruyt, ik sal u dan <rhyme label="b" type="f" corresp="#s11:l2">trouwen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Weent ende schreyt een weynigen <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Ghy sult haest <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Een eeuwighe vreught noyt sulcken <rhyme label="a" type="m" corresp="#s12:l1">jolijt</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Is voor hem die my <rhyme label="a" type="m" corresp="#s12:l1">belijdt</rhyme>,</l>
        <l id="s12:l5" met="6" type="-+">Voor de menschen vol van spijt, tot eeuwigen <rhyme label="b" type="f" corresp="#s12:l2">tijden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Blinckende als der Sonnen <rhyme label="a" type="m">schijn</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Ia boven alle <rhyme label="b" type="f">klaerheyt</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">En kleederen wit van zijde <rhyme label="a" type="m" corresp="#s13:l1">fijn</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Sullen d’uyt-verkoren <rhyme label="a" type="m" corresp="#s13:l1">mijn</rhyme>,</l>
        <l id="s13:l5" met="6" type="-+">Aendoen, en blijde zijn, en rusten van <rhyme label="b" type="f" corresp="#s13:l2">swaerheyt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Een troostelijck woordt elck hooren <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Al Die hier nu <rhyme label="b" type="f">truyren</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Als de Basuyne sal gheven <rhyme label="a" type="m" corresp="#s14:l1">gheschal</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Komt hier mijn lief <rhyme label="a" type="m" corresp="#s14:l1">ghetal</rhyme></l>
        <l id="s14:l5" met="6" type="-+">Ick sal u gheven al mijn eeuwig rijck te <rhyme label="b" type="f" corresp="#s14:l2">veuren</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Gedenkt den gevangen, als mede <rhyme label="a" type="m">gevaen</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">O Ghy <rhyme label="b" type="f">uyt-verkoren</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">En bidt den Heere dat hy my <rhyme label="a" type="m" corresp="#s15:l1">saen</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">In rusten wil <rhyme label="a" type="m" corresp="#s15:l1">ontfaen</rhyme>,</l>
        <l id="s15:l5" met="6" type="-+">En af wasschen al mijn traen, hy sal u <rhyme label="b" type="f" corresp="#s15:l2">verhoren</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Oorlof aen Broeders en Susters <rhyme label="a" type="m">gemeen</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Wy moeten hier <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Op dat wy komen by Christum <rhyme label="a" type="m" corresp="#s16:l1">alleen</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Ons Hooft-Man, en anders <rhyme label="a" type="m" corresp="#s16:l1">gheen</rhyme>,</l>
        <l id="s16:l5" met="6" type="-+">Wilt u daer toe herten, daer wil ik u <rhyme label="b" type="f" corresp="#s16:l2">verbeyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
