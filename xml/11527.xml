    <melody>Ne vous offensez madame</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE troost, noch vars aen my <rhyme label="a" type="f">geschreven</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Verquicket vvel mijn flaeuw <rhyme label="b" type="m">gemoet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Maer liever genoot ick (mijn lieve <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>!)</l>
        <l id="s1:l4" met="4" type="-+">De kusjes van u lipjens <rhyme label="b" type="m" corresp="#s1:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy blijckt vvel vvillig aen u <rhyme label="a" type="f">schryven</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En oock vvaer 't mogelijck komen <rhyme label="b" type="m">souwt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer vvie vveet hoe langh noch sal <rhyme label="a" type="f" corresp="#s2:l1">blyven</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dit vvoest tempeest dat my <rhyme label="b" type="m" corresp="#s2:l2">benouwt</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Somwijl de baren hun <rhyme label="a" type="f">verpoosen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En schynen niet so <rhyme label="b" type="m">obstinaet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dan juyght mijn geest (ey <rhyme label="a" type="f" corresp="#s3:l1">ameloosen</rhyme>!)</l>
        <l id="s3:l4" met="4" type="-+">En hoop, nu is Neptun' <rhyme label="b" type="m" corresp="#s3:l2">versaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dan dunckt my dat ick u hoor <rhyme label="a" type="f">plassen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">In Hellespontus holle <rhyme label="b" type="m">vloed</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Doch 't zijn de golven die soo <rhyme label="a" type="f" corresp="#s4:l1">kassen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Door 't roessen van het vveer <rhyme label="b" type="m" corresp="#s4:l2">verwoed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dan stijgh ick opwaerts na der <rhyme label="a" type="f">Tinnen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En steeck de baeck ter hooghten <rhyme label="b" type="m">uyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Want in mijn moedeloose <rhyme label="a" type="f" corresp="#s5:l1">sinnen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Bootst stadigh u lieff'lijck <rhyme label="b" type="m" corresp="#s5:l2">geluyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mijn Voester mach een oogh niet <rhyme label="a" type="f">sluyten</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Want ick haer steets de rust <rhyme label="b" type="m">ontsteel</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En seg, de vvindt is zadt van 't <rhyme label="a" type="f" corresp="#s6:l1">guyten</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Van 't vvoeden dol met open <rhyme label="b" type="m" corresp="#s6:l2">keel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Soud hy nu vvel zijn <rhyme label="a" type="f">onder-vvegen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En swerven op het grond'loos <rhyme label="b" type="m">diep</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Dan vvil ick u gaen loopen <rhyme label="a" type="f" corresp="#s7:l1">tegen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Aen d'oever, vvaer 'k u dick <rhyme label="b" type="m" corresp="#s7:l2">toe-riep</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dan speelt mijn vveer in mijn <rhyme label="a" type="f">gedachten</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dat elders ghy u tijd <rhyme label="b" type="m">besteet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Of b√©sigh zijt op <rhyme label="a" type="f" corresp="#s8:l1">veder-Iachten</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Of Hasen te verschalcken <rhyme label="b" type="m" corresp="#s8:l2">vveet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De laetste nacht, soo haest mijn <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Waren met dommel-vaeck <rhyme label="b" type="m">belijmt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Men docht, ick ging u lijf <rhyme label="a" type="f" corresp="#s9:l1">af-droogen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dat van de zee vvas nat <rhyme label="b" type="m" corresp="#s9:l2">beslijmt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ontwakende, vvaren 't maer <rhyme label="a" type="f">droomen</rhyme>!</l>
        <l id="s10:l2" met="4" type="-+">Doch flux de slaep my vveer <rhyme label="b" type="m">om-vingh</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Doe sagh 'k een Dolphijn strande <rhyme label="a" type="f" corresp="#s10:l1">komen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Als ick hem greep, vvas 't <rhyme label="b" type="m" corresp="#s10:l2">beuselingh</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hierom ben ick be-anghst met <rhyme label="a" type="f">duchten</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Vermoedende daer uyt yets <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dat my genaeckt een swaer <rhyme label="a" type="f" corresp="#s11:l1">versuchten</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Dus op u kracht u niet <rhyme label="b" type="m" corresp="#s11:l2">verlaet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Toeft liever, dat de strenge <rhyme label="a" type="f">vvinden</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En spart'lend' vvater is t'eynden <rhyme label="b" type="m">aem</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Dat bid ick u, mijn <rhyme label="a" type="f" corresp="#s12:l1">vvel-beminde</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Om, of u 't on-luck <rhyme label="b" type="m" corresp="#s12:l2">over-quaem</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
