    <melody>Hoe kan ik vrolijk wezen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Vaar wel, 'k sal u <rhyme label="a" type="f">verlaten</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">En u wreed <rhyme label="b" type="m">gezigt</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Voor Eeuwig <rhyme label="a" type="f" corresp="#s1:l1">haten</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Als een heiloos <rhyme label="b" type="m" corresp="#s1:l2">ligt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ontaarde Fillis, welkers <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s1:l6" met="3" type="-+">So koel en trots <rhyme label="a" type="f" corresp="#s1:l1">verwaten</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Spot met mijne <rhyme label="c" type="m" corresp="#s1:l5">smert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Heb ik door min <rhyme label="a" type="f">gedreven</rhyme></l>
        <l id="s2:l2" met="3" type="+-">U wel eer, mijn <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s2:l3" met="2" type="-+">En ziel <rhyme label="a" type="f" corresp="#s2:l1">gegeven</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">'t Was om buyten <rhyme label="b" type="m" corresp="#s2:l2">smert</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Door uwe wedermin <rhyme label="c" type="m">gevoed</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In ware vreugd te <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Door wederzijdsche <rhyme label="c" type="m" corresp="#s2:l5">gloed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maar nu ik sie u <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Al te straf en <rhyme label="b" type="m">koel</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Mijn min <rhyme label="a" type="f" corresp="#s3:l1">verwinnen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Sonder 't minst <rhyme label="b" type="m" corresp="#s3:l2">gevoel</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Trek ik van u mijn liefden <rhyme label="c" type="m">af</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Als die niet kan <rhyme label="a" type="f" corresp="#s3:l1">beminnen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Een gemoed soo <rhyme label="c" type="m" corresp="#s3:l5">straf</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maar denk niet, al te <rhyme label="a" type="f">wrede</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Dat gy altoos <rhyme label="b" type="m">sult</rhyme></l>
        <l id="s4:l3" met="2" type="-+">De min <rhyme label="a" type="f" corresp="#s4:l1">vertreden</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Sonder straf of <rhyme label="b" type="m" corresp="#s4:l2">schuld</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Eerlang sal u de <rhyme label="c" type="m">Minnegod</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Doen zien dat gy op <rhyme label="a" type="f" corresp="#s4:l1">heden</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Hem te trots <rhyme label="c" type="m" corresp="#s4:l5">bespot</rhyme>.</l>
      </lg>
    </lg>
  </text>
