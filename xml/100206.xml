    <tags/>
    <melody>Kon ik de min ontvluchten</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HY 's weg: ach lieve <rhyme label="a" type="f">vryer</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Bedrukte arme <rhyme label="a" type="f" corresp="#s1:l1">stryer</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Ik Bedroef my, om dat <rhyme label="b" type="m">gy</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Zoo lydt (eilaas) om <rhyme label="b" type="m" corresp="#s1:l3">my</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Uw smert zoud ik niet <rhyme label="a" type="f">voelen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Indien ik van 't <rhyme label="a" type="f" corresp="#s2:l1">gewoelen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Des kleinen Godts was <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Maar Chryses ach ik <rhyme label="b" type="m" corresp="#s2:l3">ly</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ik doog de zelve <rhyme label="a" type="f">plagen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die gy om my moet <rhyme label="a" type="f" corresp="#s3:l1">dragen</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Waar blyft myn lief, hy <rhyme label="b" type="m">plag</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hier immers dag op <rhyme label="b" type="m" corresp="#s3:l3">dag</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Alleen voor by te <rhyme label="a" type="f">komen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">'k Zal onder deze <rhyme label="a" type="f" corresp="#s4:l1">boomen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Wat rusten, of myn <rhyme label="b" type="m">oog</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wat door de rust <rhyme label="b" type="m" corresp="#s4:l3">betoog</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Om dat ik alle <rhyme label="a" type="f">nachten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Heel zonder slaap vol <rhyme label="a" type="f" corresp="#s5:l1">klagten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Breng deur; de slaap zal <rhyme label="b" type="m">myn</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Een smerte ligtster <rhyme label="b" type="m" corresp="#s5:l3">zyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
