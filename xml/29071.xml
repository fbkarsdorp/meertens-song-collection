  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wy wilt hoeren een nieu <rhyme label="a" type="m">liedt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Dat hier sintruyden es <rhyme label="a" type="m" corresp="#s1:l1">gheschiedt</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Van desen nieuwen <rhyme label="b" type="f">doctooren</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Dat sal ic v nv laten <rhyme label="b" type="f" corresp="#s1:l3">hooren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Doctor lap dy was <rhyme label="a" type="m">vernaempt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">En clercks als meester <rhyme label="a" type="m" corresp="#s2:l1">onbescaempt</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Doctor anglus dede die <rhyme label="b" type="f">lessen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En doctor nigri een van <rhyme label="b" type="f" corresp="#s2:l3">sessen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Bybels postillen <rhyme label="a" type="m">ghefalseert</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die seuen parochianen vals <rhyme label="a" type="m" corresp="#s3:l1">vermeert</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">En ander valscher <rhyme label="b" type="f">boecken</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dy leerde sy in allen <rhyme label="b" type="f" corresp="#s3:l3">hoecken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Veel scrifturen bringhen sy van <rhyme label="a" type="m">als</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Seer soet mer dinde is vol <rhyme label="a" type="m" corresp="#s4:l1">regals</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Waer mede sy dicwils <rhyme label="b" type="f">lighen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Om slechte menschen te <rhyme label="b" type="f" corresp="#s4:l3">bedrighen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Veel volcx soe creghen sy tot <rhyme label="a" type="m">haer</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Hun valsche leeringhe quam <rhyme label="a" type="m" corresp="#s5:l1">openbaer</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">In hoecken soe ghinghen sy <rhyme label="b" type="f">preecken</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Ende oeck in velden tes <rhyme label="b" type="f" corresp="#s5:l3">ghebleecken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dy bischop sandt een <rhyme label="a" type="m">mandament</rhyme>.</l>
        <l id="s6:l2" met="4" type="-+">Aen dy heeren vander stadt seer wys <rhyme label="a" type="m" corresp="#s6:l1">bekent</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Dat sy souwen toesien met <rhyme label="b" type="f">listen</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">En verdryuen al dees <rhyme label="b" type="f" corresp="#s6:l3">caluisten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Op Machiels dach quam een groot <rhyme label="a" type="m">geluyt</rhyme>.</l>
        <l id="s7:l2" met="4" type="-+">Dat sy allen mosten ter porten <rhyme label="a" type="m" corresp="#s7:l1">wyt</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Sintruyden vander <rhyme label="b" type="f">stede</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Daer in hadden sy seer quaden <rhyme label="b" type="f" corresp="#s7:l3">vrede</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sy en waren noch niet seer <rhyme label="a" type="m">versaecht</rhyme>.</l>
        <l id="s8:l2" met="4" type="-+">Al waren sydus in die <rhyme label="a" type="m" corresp="#s8:l1">iaecht</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Nae spiers ghinghen sy <rhyme label="b" type="f">loepen</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Hun goet mosten sy <rhyme label="b" type="f" corresp="#s8:l3">vercoepen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sy brochten van daer een groot <rhyme label="a" type="m">ghebodt</rhyme>.</l>
        <l id="s9:l2" met="4" type="-+">Metten heeren hilen sy noch hunnen <rhyme label="a" type="m" corresp="#s9:l1">spodt</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Als sint hubrecht blies synen <rhyme label="b" type="f">horen</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Doen gauen sy den moet <rhyme label="b" type="f" corresp="#s9:l3">verloren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Doen mosten sy wt al metter <rhyme label="a" type="m">haest</rhyme>.</l>
        <l id="s10:l2" met="4" type="-+">Van hertten waren sy seer <rhyme label="a" type="m" corresp="#s10:l1">verbaest</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">En verliten vrinden en <rhyme label="b" type="f">maghen</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">Nochtans en derffmense niet <rhyme label="b" type="f" corresp="#s10:l3">beclaghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Sy brochten hun seluen in dit <rhyme label="a" type="m">verdriet</rhyme>.</l>
        <l id="s11:l2" met="4" type="-+">Hier mede soe sluyt ic nv myn <rhyme label="a" type="m" corresp="#s11:l1">liet</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">Veel quade netten sy <rhyme label="b" type="f">spreyden</rhyme>.</l>
        <l id="s11:l4" met="4" type="-+">Om slechte menschen te <rhyme label="b" type="f" corresp="#s11:l3">verleyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
