    <melody>Polyphemus aan de stranden</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Redme, ô Heer! uit deze <rhyme label="a" type="f">plagen</rhyme>:</l>
        <l id="s1:l2" met="2" type="+-">Spaar uw <rhyme label="a" type="f" corresp="#s1:l1">slagen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Op mijn afgemartelt <rhyme label="b" type="m">lijf</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">En herstel, door uw <rhyme label="c" type="f">genade</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">'T vuile, en <rhyme label="c" type="f" corresp="#s1:l4">quade</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Van mijn onbedagt <rhyme label="b" type="m" corresp="#s1:l3">bedrijf</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Onbedagt, en buiten <rhyme label="a" type="f">kennis</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Pleegde ik <rhyme label="a" type="f" corresp="#s2:l1">schennis</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die mijn overtuigt <rhyme label="b" type="m">gemoed</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Nu ten regten heeft <rhyme label="c" type="f">begrepen</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Nu 'k <rhyme label="c" type="f" corresp="#s2:l4">benepen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Zit, ô Heer! in vlees, en <rhyme label="b" type="m" corresp="#s2:l3">bloed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Want ik voel mijn <rhyme label="a" type="f">onvermogen</rhyme>:</l>
        <l id="s3:l2" met="2" type="+-">En mijn <rhyme label="a" type="f" corresp="#s3:l1">oogen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Zien nu eerst mijn snood <rhyme label="b" type="m">bestaan</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Dat my voorkomt zoo <rhyme label="c" type="f">afschuwlijk</rhyme></l>
        <l id="s3:l5" met="2" type="+-">En zoo <rhyme label="c" type="f" corresp="#s3:l4">gruwlijk</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dat ik reeds schijn te <rhyme label="b" type="m" corresp="#s3:l3">vergaan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maar gy, Heer, kunt my <rhyme label="a" type="f">genezen</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Van mijn <rhyme label="a" type="f" corresp="#s4:l1">vreezen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">En mijn wanhoop, druk, en <rhyme label="b" type="m">smart</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Gy zijt (wat ik doe) <rhyme label="c" type="f">weldadig</rhyme></l>
        <l id="s4:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s4:l4">genadig</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">'K hef tot u mijn oog en <rhyme label="b" type="m" corresp="#s4:l3">hart</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Niemands hulp, ô goede <rhyme label="a" type="f">Vader</rhyme>!</l>
        <l id="s5:l2" met="2" type="+-">Komt my <rhyme label="a" type="f" corresp="#s5:l1">nader</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Als die uit uw goetheyt <rhyme label="b" type="m">vloeit</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Gy alleen kunt deze <rhyme label="c" type="f">ellenden</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Van my <rhyme label="c" type="f" corresp="#s5:l4">wenden</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Als uw gunst my weer <rhyme label="b" type="m" corresp="#s5:l3">besproeit</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Goede God stel des mijn <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Eens ter <rhyme label="a" type="f" corresp="#s6:l1">zijden</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Heb ik my door 't vlees <rhyme label="b" type="m">misgaan</rhyme>?</l>
        <l id="s6:l4" met="4" type="+-">Maak mijn geest, hier door, <rhyme label="c" type="f">boetvaardig</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">En weer <rhyme label="c" type="f" corresp="#s6:l4">waardig</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Uwen heilweg in te <rhyme label="b" type="m" corresp="#s6:l3">slaan</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hebt ge in zonden my <rhyme label="a" type="f">bevonden</rhyme>?</l>
        <l id="s7:l2" met="2" type="+-">Zie mijn <rhyme label="a" type="f" corresp="#s7:l1">wonden</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Heer, zy dreygen mijn <rhyme label="b" type="m">verderf</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">En zy maken my (hoe <rhyme label="c" type="f">schuldig</rhyme>)</l>
        <l id="s7:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s7:l4">Onverduldig</rhyme>.</l>
        <l id="s7:l6" met="4" type="+-">Laat niet toe, dat ik dus <rhyme label="b" type="m" corresp="#s7:l3">sterf</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Maar wilt liever u <rhyme label="a" type="f">erbermen</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">En uw <rhyme label="a" type="f" corresp="#s8:l1">ermen</rhyme></l>
        <l id="s8:l3" met="4" type="+-">'T mywaarts nog eens strekken <rhyme label="b" type="m">uit</rhyme>!</l>
        <l id="s8:l4" met="4" type="+-">Stel mijn bede niet ter <rhyme label="c" type="f">zijden</rhyme>!</l>
        <l id="s8:l5" met="2" type="+-">'K eer' het <rhyme label="c" type="f" corresp="#s8:l4">lijden</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Dat gy over my <rhyme label="b" type="m" corresp="#s8:l3">besluyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
