  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Tot der Jordanen Christus <rhyme label="a" type="m">quam</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Nae zijnes Vaders <rhyme label="b" type="f">willen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Van sint Jan hy den Doop daer <rhyme label="a" type="m" corresp="#s1:l1">nam</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Sijn werck en ampt <rhyme label="b" type="f" corresp="#s1:l2">veruullen</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Daer woudt hy stichten ons een <rhyme label="c" type="m">badt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Te wasschen ons van <rhyme label="d" type="f">sonden</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">En om die doot te worghen <rhyme label="c" type="m" corresp="#s1:l5">plat</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Door zijns selfs bloet en <rhyme label="d" type="f" corresp="#s1:l6">wonden</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Dit gou een nieu versch <rhyme label="e" type="f">leuen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nu hoort en merckt wel menschen <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wat Godt self heet dat <rhyme label="b" type="f">doopen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En wat een Christen gheloouen <rhyme label="a" type="m" corresp="#s2:l1">sal</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Te mijden Ketters <rhyme label="b" type="f" corresp="#s2:l2">hoopen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Godt spreeckt en wil dat water <rhyme label="c" type="m">zij</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Maer niet alleen slecht <rhyme label="d" type="f">water</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Sijn heylich woordt is oock daer <rhyme label="c" type="m" corresp="#s2:l5">by</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En den rijcken Gheest gheen <rhyme label="d" type="f" corresp="#s2:l6">verlater</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Die is alhier den <rhyme label="e" type="f">Dooper</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit heeft hy ons bewesen <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met wercken en met <rhyme label="b" type="f">woorden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Des Vaders stemme <rhyme label="a" type="m" corresp="#s3:l1">openbaer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">By der Jordanen sy <rhyme label="b" type="f" corresp="#s3:l2">hoorden</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Die sprack: Dit is mijn lieue <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In hem heb ick <rhyme label="d" type="f">gheuallen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Den wil ick u beuelen <rhyme label="c" type="m" corresp="#s3:l5">schoon</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dat ghy hem hoort in <rhyme label="d" type="f" corresp="#s3:l6">allen</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">En volghet zijne <rhyme label="e" type="f">leere</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Sone Godts hier selue <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Godt en Mensch in <rhyme label="b" type="f">persoone</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Den heylighen Gheest hem <rhyme label="a" type="m" corresp="#s4:l1">nederlaet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In sduyuen beeldt <rhyme label="b" type="f" corresp="#s4:l2">ydoone</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Op dat wy twijffelen souden <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Als wy ghedoopet <rhyme label="d" type="f">werden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Van drij Persoonen den Doop <rhyme label="c" type="m" corresp="#s4:l5">gheschiet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Die by ons hier op <rhyme label="d" type="f" corresp="#s4:l6">eerden</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Om te woonen hemselfs <rhyme label="e" type="f">gheuen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den Heere zijn Jonghers <rhyme label="a" type="m">beueelt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Gaet wilt die wereldt <rhyme label="b" type="f">leeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat die verloren door sonden <rhyme label="a" type="m" corresp="#s5:l1">queelt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Tot leetschap hem wil <rhyme label="b" type="f" corresp="#s5:l2">keeren</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Die gheloouet, en hem Doopen <rhyme label="c" type="m">laet</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Salicheyt daer door <rhyme label="d" type="f">verweruet</rhyme>.</l>
        <l id="s5:l7" met="4" type="-+">Een nieu gheboren mensch hy <rhyme label="c" type="m" corresp="#s5:l5">staet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Die nu niet meer en <rhyme label="d" type="f" corresp="#s5:l6">steruet</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Den Hemel hy <rhyme label="e" type="f">beeruet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die niet en ghelooft dit groote <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die blijft in zijne <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En is verdoempt ter hellen <rhyme label="a" type="m" corresp="#s6:l1">gloet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Diep in des doots <rhyme label="b" type="f" corresp="#s6:l2">afgronden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Sijn heylicheyt en helpt hem <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Al zijn werck is <rhyme label="d" type="f">verloren</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Die Erfsonde maeckt dit <rhyme label="c" type="m" corresp="#s6:l5">verdriet</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Daer in hy is <rhyme label="d" type="f" corresp="#s6:l6">gheboren</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Hem seluen can hy niet <rhyme label="e" type="f">helpen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die ooghe siet dat water <rhyme label="a" type="m">alleyn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als ander water <rhyme label="b" type="f">ghieten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Tghelooue, des Gheests crachten <rhyme label="a" type="m" corresp="#s7:l1">reyn</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">In Christi bloet siet <rhyme label="b" type="f" corresp="#s7:l2">vlieten</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">En is voor hem een roode <rhyme label="c" type="m">vloet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Met Christi bloet <rhyme label="d" type="f">bestreken</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">Dat alle wonden heelen <rhyme label="c" type="m" corresp="#s7:l5">doet</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Door Adam <rhyme label="d" type="f" corresp="#s7:l6">inghesteken</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">En door ons oock <rhyme label="e" type="f">vercreghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
