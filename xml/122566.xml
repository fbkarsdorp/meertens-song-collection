  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ik heb de gansche <rhyme label="a" type="m">nacht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijn zinnen laten <rhyme label="b" type="f">dwalen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Aan zoo een holle <rhyme label="c" type="m">boom</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Veel vreugde, zonder <rhyme label="c" type="m" corresp="#s1:l3">schroom</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Mijn dagt ik lag en <rhyme label="d" type="m">sliep</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In zoo een vreemde <rhyme label="e" type="f">landen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En dat in <rhyme label="f" type="m">eenzaamheid</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">'t Duurde zoo een korte <rhyme label="f" type="m" corresp="#s1:l7">tijd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Mijn dunkt ik zag van <rhyme label="a" type="m">ver</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Een helder schip <rhyme label="b" type="f">laveeren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zoo sierlijk <rhyme label="c" type="m">gebouwd</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Geheel van <rhyme label="c" type="m" corresp="#s2:l3">ebbenhont</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">De vlag was rood <rhyme label="d" type="m">satijn</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Sneew witte zijde <rhyme label="e" type="f">zeilen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Twee ankers ten <rhyme label="f" type="m">toon</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">Van goud en zilver <rhyme label="f" type="m" corresp="#s2:l7">schoon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Veel paerlen <rhyme label="a" type="m">diamanten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En weinig der <rhyme label="b" type="f">gezanten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Daar was alles <rhyme label="c" type="m">abondant</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Nooit schoonder schip <rhyme label="c" type="m" corresp="#s3:l3">gestrant</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">De stuurman van het <rhyme label="d" type="m">schip</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Deed anders niet als <rhyme label="e" type="f">pijlen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Om dat hij was <rhyme label="f" type="m">belaan</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dat zijn schip zou <rhyme label="f" type="m" corresp="#s3:l7">vergaan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De constapel van het <rhyme label="a" type="m">schip</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Deed zijn courasie <rhyme label="b" type="f">blijken</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Aldoor de <rhyme label="c" type="m">tellegram</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Spoog niet als vuur en <rhyme label="c" type="m" corresp="#s4:l3">vlam</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Wanneer de heldere <rhyme label="d" type="m">zon</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Moest van zijn stralen <rhyme label="e" type="f">wijken</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Al door de felle <rhyme label="f" type="m">vlam</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Haar helderen glans <rhyme label="f" type="m" corresp="#s4:l7">benam</rhyme>.</l>
      </lg>
    </lg>
  </text>
