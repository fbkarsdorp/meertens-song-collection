    <melody>Rozemond waar gij vliedt</melody>
    <categories>
      <category translation="cycle of life">levenscyclus</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">BRuydegom met u <rhyme label="a" type="m">Bruydt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ghy die u, door liefds <rhyme label="a" type="m" corresp="#s1:l1">besluyt</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Echtlijck t'samen <rhyme label="b" type="m">paert</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">En wenscht dat dees <rhyme label="c" type="m">trouw</rhyme>,</l>
        <l id="s1:l5" met="5" type="+-">Beyd' u vorder levens stant <rhyme label="c" type="m" corresp="#s1:l4">behouw</rhyme>.</l>
        <l id="s1:l6" met="3" type="+-">Liefd' vereende <rhyme label="d" type="m">twee</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Wat sal sijn mijn <rhyme label="e" type="m">raet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Op dat u staet <rhyme label="e" type="m" corresp="#s1:l7">bestaet</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Staegh in liefde en <rhyme label="f" type="m">vree</rhyme>?</l>
        <l id="s1:l10" met="4" type="+-">Maer ick raed' houdt Godes <rhyme label="g" type="m">Woordt</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">En staegh na 't alder-noodighst <rhyme label="g" type="m" corresp="#s1:l10">spoort</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Christus wil dat het <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Binnen eerst gesuyvert <rhyme label="a" type="m" corresp="#s2:l1">werdt</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Soo sal al 't <rhyme label="b" type="m">gevolgh</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Van u leven <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s2:l5" met="5" type="+-">Reyn en stichtelijck in der daet en <rhyme label="c" type="m" corresp="#s2:l4">schijn</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">'t Fondament moet <rhyme label="d" type="m">eerst</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Wortel voor de <rhyme label="e" type="m">vrucht</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Soo oock voor <rhyme label="e" type="m" corresp="#s2:l7">Echte-sucht</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">En voor alle <rhyme label="f" type="m">vreught</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Die den Echt werdt <rhyme label="g" type="m">toegeseydt</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Moet Godts rijck en <rhyme label="g" type="m" corresp="#s2:l10">gerechtigheydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Want met wat vreught kan <rhyme label="a" type="m">d'Echt</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Van u beyden sijn <rhyme label="a" type="m" corresp="#s3:l1">door-vleght</rhyme>?</l>
        <l id="s3:l3" met="3" type="+-">Met wat trouwe <rhyme label="b" type="m">trouw</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Kont ghy zijn <rhyme label="c" type="m">getrouwt</rhyme>,</l>
        <l id="s3:l5" met="5" type="+-">Soo ghy d'Opper-Heer u Eet niet <rhyme label="c" type="m" corresp="#s3:l4">houdt</rhyme>?</l>
        <l id="s3:l6" met="3" type="+-">Want ghy hebt u <rhyme label="d" type="m">siel</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Lijf, en <rhyme label="e" type="m">levens-stant</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Aen desen Heer <rhyme label="e" type="m" corresp="#s3:l7">verpant</rhyme>:</l>
        <l id="s3:l9" met="3" type="+-">Daerom soud' het <rhyme label="f" type="m">zijn</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Dwaes dat men van trouwe <rhyme label="g" type="m">sprack</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Soo men sijn trouw met Gode <rhyme label="g" type="m" corresp="#s3:l10">brack</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer soo ghy die <rhyme label="a" type="m">bewaert</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En beyd' zijt uyt Godt <rhyme label="a" type="m" corresp="#s4:l1">gebaert</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Soo sal u dees <rhyme label="b" type="m">staet</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Sijn vol vreed' en <rhyme label="c" type="m">vreught</rhyme>,</l>
        <l id="s4:l5" met="5" type="+-">En vol zegen van de ware <rhyme label="c" type="m" corresp="#s4:l4">deught</rhyme>.</l>
        <l id="s4:l6" met="3" type="+-">Dan spreeckt Petrus <rhyme label="d" type="m">stem</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Hoe ghy beyd' te <rhyme label="e" type="m">gaer</rhyme></l>
        <l id="s4:l8" met="3" type="-+">V plicht sult nemen <rhyme label="e" type="m" corresp="#s4:l7">waer</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">Hoe een Man sijn <rhyme label="f" type="m">Vrouw</rhyme></l>
        <l id="s4:l10" met="4" type="+-">En een Vrouw weer haer <rhyme label="g" type="m">Man</rhyme></l>
        <l id="s4:l11" met="4" type="+-">Vol vreught, en deught, ontmoeten <rhyme label="g" type="m" corresp="#s4:l10">kan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daerom lief vroolijck <rhyme label="a" type="m">paer</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Nu vereenight met <rhyme label="a" type="m" corresp="#s5:l1">malkaer</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Is mijn beste <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Dat ghy wel <rhyme label="c" type="m">betracht</rhyme></l>
        <l id="s5:l5" met="5" type="+-">V belofte aen Godt (uyt alle <rhyme label="c" type="m" corresp="#s5:l4">kracht</rhyme>)</l>
        <l id="s5:l6" met="3" type="+-">Geeft hem d'hooghste <rhyme label="d" type="m">plaets</rhyme></l>
        <l id="s5:l7" met="3" type="+-">In u hart en <rhyme label="e" type="m">sin</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En mint met minder <rhyme label="e" type="m" corresp="#s5:l7">min</rhyme></l>
        <l id="s5:l9" met="3" type="+-">Al wat Godt niet <rhyme label="f" type="m">is</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">Wijf, of kindt, of goet, of <rhyme label="g" type="m">bloet</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Waer van ghy eenmael scheyden <rhyme label="g" type="m" corresp="#s5:l10">moet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En dat is het <rhyme label="a" type="m">verbont</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Dat ghy met hart en <rhyme label="a" type="m" corresp="#s6:l1">mondt</rhyme></l>
        <l id="s6:l3" met="3" type="+-">Eenmael hebt <rhyme label="b" type="m">gemaeckt</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Daerom, voor een <rhyme label="c" type="m">slot</rhyme>,</l>
        <l id="s6:l5" met="5" type="+-">Mint al wat ghy mint, mint het in <rhyme label="c" type="m" corresp="#s6:l4">Godt</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">En gelijck u <rhyme label="d" type="m">selfs</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">V Echts <rhyme label="e" type="m">Bed-genoot</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Tot in de bleecke <rhyme label="e" type="m" corresp="#s6:l7">doot</rhyme>:</l>
        <l id="s6:l9" met="3" type="+-">Want soo de Heere <rhyme label="f" type="m">spreeckt</rhyme>,</l>
        <l id="s6:l10" met="4" type="+-">Ist u eygen vleesch en <rhyme label="g" type="m">been</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">('t Welck niemant haet) ja zijt gansch <rhyme label="g" type="m" corresp="#s6:l10">een</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
