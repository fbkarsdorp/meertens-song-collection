  <author>Frank A. Metaal</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Een Bruylofts-liedt een blijde <rhyme label="a" type="m">zangh</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Moet ick nu eens vangen <rhyme label="a" type="m" corresp="#s1:l1">an</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En dichten met een blijden <rhyme label="b" type="m">geest</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Dus singht met my al op dees <rhyme label="b" type="m" corresp="#s1:l3">Feest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want onsen Bruydegom seer <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Heeft gevonden sijn Lief <rhyme label="a" type="m" corresp="#s2:l1">eerbaer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dus singht nu alle minst en <rhyme label="b" type="m">meest</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Op dese blijde <rhyme label="b" type="m" corresp="#s2:l3">Bruylofts-feest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En wenst geluck dit jonge <rhyme label="a" type="m">paer</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat Godt altijt wil geven <rhyme label="a" type="m" corresp="#s3:l1">haer</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Geluck in voorspoet <rhyme label="b" type="m">onbevreest</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dies singht nu alle op dees <rhyme label="b" type="m" corresp="#s3:l3">Feest</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dies laten wy nu vallen <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Malkand’ren tot den zangh <rhyme label="a" type="m" corresp="#s4:l1">bystaen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Sie daer ick sal nu zijn de <rhyme label="b" type="m">eerst</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Singht oock met my op dese <rhyme label="b" type="m" corresp="#s4:l3">Feest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Bruydegom en weest meed’ niet <rhyme label="a" type="m">stil</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Gy hebt hier uwen rechten <rhyme label="a" type="m" corresp="#s5:l1">wil</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En gy zijt langh in smart <rhyme label="b" type="m">geweest</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dus singht met ons op dese <rhyme label="b" type="m" corresp="#s5:l3">Feest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Vrouw Bruyt gy moet oock niet stil <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Ick brengh u eens een roemer <rhyme label="a" type="m" corresp="#s6:l1">wijn</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Weest voor dit nachtjen niet <rhyme label="b" type="m">bevreest</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maer singht met ons op dese <rhyme label="b" type="m" corresp="#s6:l3">Feest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Want God de Heer wel <rhyme label="a" type="m">toelaet</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Als het geschiet op reen en <rhyme label="a" type="m" corresp="#s7:l1">maet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Soo hy te Cana heeft <rhyme label="b" type="m">geweest</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Laet ons oock zijn op dese <rhyme label="b" type="m" corresp="#s7:l3">Feest</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Oorlof nu <rhyme label="a" type="m">Bruylofts-genoot</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Hier dient wel een goede <rhyme label="a" type="m" corresp="#s8:l1">Piloot</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Die ’t Gebedt na de maeltijt <rhyme label="b" type="m">leest</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En dan weer singht op dese <rhyme label="b" type="m" corresp="#s8:l3">Feest</rhyme>.</l>
      </lg>
    </lg>
  </text>
