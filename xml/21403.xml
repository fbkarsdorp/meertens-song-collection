    <melody>Gij nijders kwaad van doen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EYlacen wy arme <rhyme label="a" type="f">schapen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Wat sullen wy ter werelt <rhyme label="b" type="m">bestaen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Want door ghebot der <rhyme label="a" type="f" corresp="#s1:l1">Papen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">En weten wy waer henen <rhyme label="b" type="m" corresp="#s1:l2">gaen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Ons Herders sietmen hier <rhyme label="b" type="m" corresp="#s1:l2">verslaen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Om dat sy ons wt liefden <rhyme label="b" type="m" corresp="#s1:l2">zaen</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Uan Gods woort nv doen <rhyme label="b" type="m" corresp="#s1:l2">vermaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wy en moghen nv niet <rhyme label="a" type="f">eten</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Dan menschen dreck een quaet <rhyme label="b" type="m">fenijn</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sy zijn terstont <rhyme label="a" type="f" corresp="#s2:l1">verbeten</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Die hier Gods woort wt deylen <rhyme label="b" type="m" corresp="#s2:l2">fijn</rhyme></l>
        <l id="s2:l5" met="4" type="-+">O Christe ons Herder <rhyme label="b" type="m" corresp="#s2:l2">diuijn</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Sal dit dueren een lanck <rhyme label="b" type="m" corresp="#s2:l2">termijn</rhyme></l>
        <l id="s2:l7" met="4" type="-+">So moghen wy wel truerende <rhyme label="b" type="m" corresp="#s2:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Christus seght, coemt eten en <rhyme label="a" type="f">drincken</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Wijn ende melck en dat om <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Maer vuyle putten die <rhyme label="a" type="f" corresp="#s3:l1">stincken</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Graeftmen ons alsomen nv <rhyme label="b" type="m" corresp="#s3:l2">siet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">En die daer teghen segghen <rhyme label="b" type="m" corresp="#s3:l2">yet</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Bringhtmen seer ras in groot <rhyme label="b" type="m" corresp="#s3:l2">verdriet</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Dus niemant ons Gods woort en <rhyme label="b" type="m" corresp="#s3:l2">biet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dus zijn veel schapen <rhyme label="a" type="f">ghestoruen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Door moordinghe en peste <rhyme label="b" type="m">quaet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Door quade secten <rhyme label="a" type="f" corresp="#s4:l1">bedoruen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Stinckende bocken quaden <rhyme label="b" type="m" corresp="#s4:l2">raet</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Ons is benomen eylaes <rhyme label="b" type="m" corresp="#s4:l2">iaet</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Gods heylich woort dat vruchtbaer <rhyme label="b" type="m" corresp="#s4:l2">saet</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Om dat eyghen baet ter neer <rhyme label="b" type="m" corresp="#s4:l2">slaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Christus goet herder <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Staet by v schaepkens nv ter <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Die den Uader heeft wt <rhyme label="a" type="f" corresp="#s5:l1">ghelesen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">En sullender gheen zijn <rhyme label="b" type="m" corresp="#s5:l2">onturijt</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Al zijn sy ter werelt <rhyme label="b" type="m" corresp="#s5:l2">benijt</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Huerlieder lijden seer <rhyme label="b" type="m" corresp="#s5:l2">subijt</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Sal verkeeren in eewich <rhyme label="b" type="m" corresp="#s5:l2">iolijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ons troost onse <rhyme label="a" type="f">iubilacie</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Dat is v heylich woort seer <rhyme label="b" type="m">soet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Maer door Antechrists <rhyme label="a" type="f" corresp="#s6:l1">generacie</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Licht dat hier nv al onder de <rhyme label="b" type="m" corresp="#s6:l2">voet</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Die woluen zijn dul ende <rhyme label="b" type="m" corresp="#s6:l2">verwoet</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Alst eenen herder open <rhyme label="b" type="m" corresp="#s6:l2">doet</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Nochtans elck dat wel weten <rhyme label="b" type="m" corresp="#s6:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Had ons die Heere niet <rhyme label="a" type="f">ghelaten</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Sijn heylich woort seer <rhyme label="b" type="m">autentijck</rhyme></l>
        <l id="s7:l3" met="3" type="-+">So waren wy tonser <rhyme label="a" type="f" corresp="#s7:l1">onbaten</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Sodoma hier worden <rhyme label="b" type="m" corresp="#s7:l2">ghelijck</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Dies leght Antechrist menighen <rhyme label="b" type="m" corresp="#s7:l2">strijck</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Op dat hy vermeerdere zijn <rhyme label="b" type="m" corresp="#s7:l2">rijck</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Met valsche leer en menich <rhyme label="b" type="m" corresp="#s7:l2">heretijck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die dit liedeken eerst <rhyme label="a" type="f">stelde</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Met vleesch en bloet was hy <rhyme label="b" type="m">beswaert</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Die werelt met haren <rhyme label="a" type="f" corresp="#s8:l1">ghewelde</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Ueruolchde hem, tis haren <rhyme label="b" type="m" corresp="#s8:l2">aert</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Om dat hy hier Gods woort <rhyme label="b" type="m" corresp="#s8:l2">verclaert</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Dat edel noch onedel en <rhyme label="b" type="m" corresp="#s8:l2">spaert</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Maer elckens sonden <rhyme label="b" type="m" corresp="#s8:l2">openbaert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
