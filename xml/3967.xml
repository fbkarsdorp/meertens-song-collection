  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe mach gods liefde <rhyme label="a" type="m">reyne</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dus weynich sijn <rhyme label="b" type="f">geuonden</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van elcken int <rhyme label="a" type="m" corresp="#s1:l1">ghemeyne</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Gheacht so ouer <rhyme label="a" type="m" corresp="#s1:l1">cleyne</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Die ons bemint <rhyme label="a" type="m" corresp="#s1:l1">certeyne</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Hy wil dat wij <rhyme label="a" type="m" corresp="#s1:l1">alleyne</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hem minnen tot allen <rhyme label="b" type="f" corresp="#s1:l2">stonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als onse begheerten <rhyme label="a" type="m">strecken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Al na die weerlijcke <rhyme label="b" type="f">dinghen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Die de siele <rhyme label="a" type="m" corresp="#s2:l1">beulecken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ende van Gode <rhyme label="a" type="m" corresp="#s2:l1">trecken</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Gods wijsheden die <rhyme label="a" type="m" corresp="#s2:l1">ontdecken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hoe ons des werelts <rhyme label="a" type="m" corresp="#s2:l1">smecken</rhyme></l>
        <l id="s2:l7" met="3" type="-+">In eewighen druck sal <rhyme label="b" type="f" corresp="#s2:l2">bringhen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al dat het vleesch <rhyme label="a" type="m">begheert</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ende ooc des lichaems <rhyme label="b" type="f">ghesichte</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ende hoouerdie <rhyme label="a" type="m" corresp="#s3:l1">ontweert</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dit yst dat die siele <rhyme label="a" type="m" corresp="#s3:l1">begheert</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ende haer minne dicwils <rhyme label="a" type="m" corresp="#s3:l1">verteert</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die dit nyet en <rhyme label="a" type="m" corresp="#s3:l1">ontkeert</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Moet deruen van den <rhyme label="b" type="f" corresp="#s3:l2">lichte</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wi sijn van als wel <rhyme label="a" type="m">vroet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Om des lichaems <rhyme label="b" type="f">bestiere</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Maer der sielen <rhyme label="a" type="m" corresp="#s4:l1">goet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dwelck God bekennen <rhyme label="a" type="m" corresp="#s4:l1">moet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dat treedt men onder die <rhyme label="a" type="m" corresp="#s4:l1">voet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Seer luttel beroert dat ons <rhyme label="a" type="m" corresp="#s4:l1">bloet</rhyme></l>
        <l id="s4:l7" met="3" type="-+">In Gods woort <rhyme label="b" type="f" corresp="#s4:l2">allegieren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wie doet van God <rhyme label="a" type="m">vermaen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dien heetmen <rhyme label="b" type="f">hypocrite</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Die werelt doet <rhyme label="a" type="m" corresp="#s5:l1">versmaen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Si en can God niet <rhyme label="a" type="m" corresp="#s5:l1">verstaen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Maer laet drincken <rhyme label="a" type="m" corresp="#s5:l1">gaen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dat is al wel <rhyme label="a" type="m" corresp="#s5:l1">ghedaen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Dit schijnt een <rhyme label="b" type="f" corresp="#s5:l2">hemelrijcke</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer die God toe <rhyme label="a" type="m">behoort</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En can dat niet <rhyme label="b" type="f">vergheten</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Maer hi verhaelt Gods <rhyme label="a" type="m" corresp="#s6:l1">woort</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Al na der kercken <rhyme label="a" type="m" corresp="#s6:l1">accoort</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Gods kinder drijft hi altijt <rhyme label="a" type="m" corresp="#s6:l1">voort</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Die werelt hi heel <rhyme label="a" type="m" corresp="#s6:l1">verstoort</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Si en wil sijns niet <rhyme label="b" type="f" corresp="#s6:l2">gheweten</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wie is nu die <rhyme label="a" type="m">verblijt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In goddelijcken <rhyme label="b" type="f">vrede</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Ghelijcmen heeft <rhyme label="a" type="m" corresp="#s7:l1">iolijt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">In ghierighen <rhyme label="a" type="m" corresp="#s7:l1">appetijt</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Wie yst die hem nu also <rhyme label="a" type="m" corresp="#s7:l1">quijt</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Om God onsen heer <rhyme label="a" type="m" corresp="#s7:l1">ghebenedijt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Als menich mensche om <rhyme label="b" type="f" corresp="#s7:l2">rijcheyt</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghi ionghe maechden <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ghi soect rijcheyt en <rhyme label="b" type="f">eere</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Ghi en acht verdriet noch <rhyme label="a" type="m" corresp="#s8:l1">pijn</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Mocht ghi verheuen <rhyme label="a" type="m" corresp="#s8:l1">sijn</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Hier al dit cort <rhyme label="a" type="m" corresp="#s8:l1">termijn</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Maer dat schoon godlijc <rhyme label="a" type="m" corresp="#s8:l1">aenscijn</rhyme></l>
        <l id="s8:l7" met="3" type="-+">En hebdy in minne noch in <rhyme label="b" type="f" corresp="#s8:l2">eere</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ontpluycte ghi v <rhyme label="a" type="m">iuecht</rhyme></l>
        <l id="s9:l2" met="3" type="-+">In dat godlike <rhyme label="b" type="f">bescouwen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Ghi sout meer sijn <rhyme label="a" type="m" corresp="#s9:l1">verhuecht</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Met liefden also <rhyme label="a" type="m" corresp="#s9:l1">bevruecht</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Int smaken alre <rhyme label="a" type="m" corresp="#s9:l1">duecht</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Die cracht van shemels <rhyme label="a" type="m" corresp="#s9:l1">vruecht</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Die soude v hier <rhyme label="b" type="f" corresp="#s9:l2">bedouwen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ruyter van fijnder <rhyme label="a" type="m">aert</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Den crijch is al v <rhyme label="b" type="f">leuen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Op dat ghi sijt <rhyme label="a" type="m" corresp="#s10:l1">vermaert</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Strijd fier ende <rhyme label="a" type="m" corresp="#s10:l1">onueruaert</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Als knecht onder den <rhyme label="a" type="m" corresp="#s10:l1">standaert</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Maer v seluen niet en <rhyme label="a" type="m" corresp="#s10:l1">spaert</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Int duechdelijck <rhyme label="b" type="f" corresp="#s10:l2">aencleuen</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">God die ons heeft <rhyme label="a" type="m">ghemaect</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Dyen stellen wij <rhyme label="b" type="f">besiden</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Seer luttel yemant <rhyme label="a" type="m" corresp="#s11:l1">smaect</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Christum aent cruyce <rhyme label="a" type="m" corresp="#s11:l1">naect</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Die doer ons liefde <rhyme label="a" type="m" corresp="#s11:l1">blaect</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Nochtans die na hem <rhyme label="a" type="m" corresp="#s11:l1">haect</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Gheeft hi dat eewich <rhyme label="b" type="f" corresp="#s11:l2">verbliden</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Oerlof / dit is dat <rhyme label="a" type="m">ent</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Die dit wilde <rhyme label="b" type="f">vertellen</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Hi haet die werelt <rhyme label="a" type="m" corresp="#s12:l1">blent</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Want si hout <rhyme label="a" type="m" corresp="#s12:l1">innocent</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Den ghenen die Christus liefde <rhyme label="a" type="m" corresp="#s12:l1">kent</rhyme>.</l>
        <l id="s12:l6" met="3" type="-+">Sijn woorden <rhyme label="a" type="m" corresp="#s12:l1">excellent</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Can si ouer side <rhyme label="b" type="f" corresp="#s12:l2">stellen</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
