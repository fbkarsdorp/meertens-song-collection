    <melody>Het haantje van de wijnen</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HET Iaar men siet <rhyme label="a" type="f">vernuwen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Maer laas de menschen <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ons sonden wy niet <rhyme label="a" type="f" corresp="#s1:l1">schuwen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Off Godt ghenade <rhyme label="b" type="m" corresp="#s1:l2">biet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Het wert niet in <rhyme label="c" type="f">ghenomen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Wat datmen leert off <rhyme label="d" type="m">preeckt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Doe macht ten besten <rhyme label="c" type="f" corresp="#s1:l5">comen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Alst aan ons doen <rhyme label="d" type="m" corresp="#s1:l6">ontbreeckt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">In plaats van te <rhyme label="a" type="f">vermijen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">De sond ende <rhyme label="b" type="m">misdaat</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sien wy tot allen <rhyme label="a" type="f" corresp="#s2:l1">tijen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ons hart vervult met <rhyme label="b" type="m" corresp="#s2:l2">haat</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wy weten wel te <rhyme label="c" type="f">thoonen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Wat quaat een ander <rhyme label="d" type="m">doet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Maar seluen wy <rhyme label="c" type="f" corresp="#s2:l5">verschoonen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Ons eyghen vuyl <rhyme label="d" type="m" corresp="#s2:l6">ghemoet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Met raad en daad wy <rhyme label="a" type="f">poghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Om te brengen in <rhyme label="b" type="m">last</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ons naasten nae <rhyme label="a" type="f" corresp="#s3:l1">vermoghen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dies tquaat te meer aan <rhyme label="b" type="m" corresp="#s3:l2">wast</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Men lieght, bedrieght seer <rhyme label="c" type="f">aardigh</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met een waarachtigh <rhyme label="d" type="m">schijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Daar by oock soo <rhyme label="c" type="f" corresp="#s3:l5">hovaardigh</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Dat elkck de meest wil <rhyme label="d" type="m" corresp="#s3:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die heden is <rhyme label="a" type="f">ghebooren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ons sulcx niet en <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Maar laat zijn rijck <rhyme label="a" type="f" corresp="#s4:l1">vercooren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En heeft hem gantsch <rhyme label="b" type="m" corresp="#s4:l2">verneert</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Is als een kint <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Te Bethlem in een <rhyme label="d" type="m">stal</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Om onse snoode <rhyme label="c" type="f" corresp="#s4:l5">zonden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Die hy te niet doet <rhyme label="d" type="m" corresp="#s4:l6">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Is onse Heer zoo <rhyme label="a" type="f">ghoedigh</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En wert mensch ons <rhyme label="b" type="m">ghelijck</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Laat ons doch oock <rhyme label="a" type="f" corresp="#s5:l1">ootmoedigh</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Hem volghen sonder <rhyme label="b" type="m" corresp="#s5:l2">wijck</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Hy comt willigh <rhyme label="c" type="f">beneeden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dienstbaar, veedrigh en <rhyme label="d" type="m">slecht</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Leert op den dagh van <rhyme label="c" type="f" corresp="#s5:l5">heeden</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Gheen Heer te zijn: maar <rhyme label="d" type="m" corresp="#s5:l6">knecht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wy die ons Christnen <rhyme label="a" type="f">noemen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En lidt maten vant <rhyme label="b" type="m">hooft</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Wat hebben wy te <rhyme label="a" type="f" corresp="#s6:l1">roemen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Als hooghmoet ons <rhyme label="b" type="m" corresp="#s6:l2">verdooft</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Off wy hem noemen <rhyme label="c" type="f">vader</rhyme></l>
        <l id="s6:l6" met="3" type="-+">In ons daeghlijck <rhyme label="d" type="m">ghebet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Misbruyckende te <rhyme label="c" type="f" corresp="#s6:l5">gader</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Zijn wil, zijn woort, en <rhyme label="d" type="m" corresp="#s6:l6">wet</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">T'waar over tijt te <rhyme label="a" type="f">vlieden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Ons eyghen wil en <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Door weldaad aande <rhyme label="a" type="f" corresp="#s7:l1">lieden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Daar noot het hart <rhyme label="b" type="m" corresp="#s7:l2">ontrust</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Die d'armen niet <rhyme label="c" type="f">besinnen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Noch helpen uyt <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Hoe sal hy Godt <rhyme label="c" type="f" corresp="#s7:l5">beminnen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Die hy doch niet en <rhyme label="d" type="m" corresp="#s7:l6">siet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Prins buycht ons harts <rhyme label="a" type="f">ghedachten</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Nae u natuer en <rhyme label="b" type="m">leer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat wy eens moghen <rhyme label="a" type="f" corresp="#s8:l1">trachten</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Te lieven u o <rhyme label="b" type="m" corresp="#s8:l2">Heer</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Ons quaden aart wilt <rhyme label="c" type="f">snoepen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Dit bidden wy <rhyme label="d" type="m">eenpaar</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Dat liefd' in ons mach <rhyme label="c" type="f" corresp="#s8:l5">bloeyen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">In desen nieuwen <rhyme label="d" type="m" corresp="#s8:l6">Iaar</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
