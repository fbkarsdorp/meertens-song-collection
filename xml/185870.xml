<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>185870</id>
    <date>
      <year-start>1700</year-start>
      <year-end>1700</year-end>
    </date>
    <tags/>
    <melody>Nerea schoonste van uw geburen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Nerea o schoonste van u <rhyme label="a" type="f">geburen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die hier in 't Wout wonen <rhyme label="b" type="m">ontrent</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hoe lang sal nog u wreedheyd <rhyme label="a" type="f" corresp="#s1:l1">duuren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Hoe lang sal duuren mijn <rhyme label="b" type="m" corresp="#s1:l2">elend</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daifilo steld uyt uwe <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">den zwaren brand die in u <rhyme label="b" type="m">woond</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Hoe kondy soo een Vrou <rhyme label="a" type="f" corresp="#s2:l1">beminnen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Die u met ondankbaerheyd <rhyme label="b" type="m" corresp="#s2:l2">loont</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Jk hoop u hert nog eens te <rhyme label="a" type="f">buygen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Als mijn mismaekte wangen <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">U selven sullen <rhyme label="a" type="f" corresp="#s3:l1">overtuygen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat gy zijt d'oorsaek van mijn <rhyme label="b" type="m" corresp="#s3:l2">dood</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Neen Lief al sag ik u daer <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Een enkel kusjen van mijn <rhyme label="b" type="m">mond</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En soud gy ooyt van mijn <rhyme label="a" type="f" corresp="#s4:l1">verwerven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Al kon ik u maken <rhyme label="b" type="m" corresp="#s4:l2">gezond</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo heb ik dan mijn trouwe <rhyme label="a" type="f">minne</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Op een qua Fondament <rhyme label="b" type="m">geleyd</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Nogtans soo sal ik u <rhyme label="a" type="f" corresp="#s5:l1">beminnen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">'t Spijt u en wie 't sal wesen <rhyme label="b" type="m" corresp="#s5:l2">leyd</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hoe wilt gy dan mijn dienaer <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En niet eens vragen na mijn <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Jk heb een ander <rhyme label="a" type="f" corresp="#s6:l1">uytgelesen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die mijn bemind, en ik wel <rhyme label="b" type="m" corresp="#s6:l2">wil</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Jk sal u nimmermeer <rhyme label="a" type="f">verlaten</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Al soud gy eeuwig van mijn <rhyme label="b" type="m">vlien</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Gy meugt mijn by u selven <rhyme label="a" type="f" corresp="#s7:l1">haten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Maer 't minne kunt gy mijn niet <rhyme label="b" type="m" corresp="#s7:l2">verbien</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Bezadigt uwe woeste <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Een weynig u ter neder <rhyme label="b" type="m">slaet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Vermindert wat u heftig <rhyme label="a" type="f" corresp="#s8:l1">minnen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Jk sal verminderen ook mijn <rhyme label="b" type="m" corresp="#s8:l2">haet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Noyt heeft mijn nog de min <rhyme label="a" type="f">verdroten</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Hoe wel gy die beloond met <rhyme label="b" type="m">quaed</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Waer uyt is u dees haet <rhyme label="a" type="f" corresp="#s9:l1">gesproten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die u soo diep in 't herte <rhyme label="b" type="m" corresp="#s9:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Den haet die ik dus draeg van <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En u by my dus maekt <rhyme label="b" type="m">veragt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die spruyt alleenlijk uyt u <rhyme label="a" type="f" corresp="#s10:l1">minnen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Dat gy soo veel loons waerdig <rhyme label="b" type="m" corresp="#s10:l2">agt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Kan Liefde dan een oorsaek <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Van soo een doodelijk <rhyme label="b" type="m">Fenijn</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Het komt uyt 't harde hooft <rhyme label="a" type="f" corresp="#s11:l1">geresen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Dat nimmermeer versaet kan <rhyme label="b" type="m" corresp="#s11:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Wy hebben lang genoeg staen <rhyme label="a" type="f">praten</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">De kans mag nemen eens een <rhyme label="b" type="m">keer</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Siet of gy mijn sout kunnen <rhyme label="a" type="f" corresp="#s12:l1">haten</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Mogelijk sou ik u minnen <rhyme label="b" type="m" corresp="#s12:l2">weer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
