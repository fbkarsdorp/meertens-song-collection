    <melody>Tien geboden</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O HEER! verlos mij uit de <rhyme label="a" type="f">banden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Waarin de booze mij <rhyme label="b" type="m">beknelt</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Behoed mij voor des wreedaarts <rhyme label="a" type="f" corresp="#s1:l1">handen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Voor dwinglandij en woest <rhyme label="b" type="m" corresp="#s1:l2">geweld</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Red mij van hun, die kwaad <rhyme label="a" type="f">bedenken</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die daaglijks samen zich <rhyme label="b" type="m">beraên</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om mij door 't oorlogszwaard te <rhyme label="a" type="f" corresp="#s2:l1">krenken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En t' eenemaal ter neêr te <rhyme label="b" type="m" corresp="#s2:l2">slaan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hun tongen scherpen zij als <rhyme label="a" type="f">slangen</rhyme>;</l>
        <l id="s3:l2" met="4" type="-+">Zij smeeden valsheid en <rhyme label="b" type="m">bedrog</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Zij passen loos op mijne <rhyme label="a" type="f" corresp="#s3:l1">gangen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Met monden vol van <rhyme label="b" type="m" corresp="#s3:l2">adderspog</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Bescherm mij voor de <rhyme label="a" type="f">goddeloozen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">O HEER! o Richter van 't <rhyme label="b" type="m">heelal</rhyme>!</l>
        <l id="s4:l3" met="4" type="-+">Verlos mij van 't geweld der <rhyme label="a" type="f" corresp="#s4:l1">boozen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die niets bedoelen dan mijn' <rhyme label="b" type="m" corresp="#s4:l2">val</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De trotschen, nijdig om mijn' <rhyme label="a" type="f">zegen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Belaagen mij met koord en <rhyme label="b" type="m">net</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Zij hebben heimlijk op de <rhyme label="a" type="f" corresp="#s5:l1">wegen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Voor mij een valstrik <rhyme label="b" type="m" corresp="#s5:l2">uitgezet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ik dacht in mijn verdriet te <rhyme label="a" type="f">smooren</rhyme>;</l>
        <l id="s6:l2" met="4" type="-+">Dies riep ik: HEER, Gij zijt mijn <rhyme label="b" type="m">God</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Neem mijne smeekingen ter <rhyme label="a" type="f" corresp="#s6:l1">ooren</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Verzacht in 't eind mijn droevig <rhyme label="b" type="m" corresp="#s6:l2">lot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O HEER, mijn rotssteen, mijne <rhyme label="a" type="f">sterkte</rhyme>!</l>
        <l id="s7:l2" met="4" type="-+">Gij hebt mij steeds tot heil <rhyme label="b" type="m">verstrekt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En in den strijd, daar 't elk <rhyme label="a" type="f" corresp="#s7:l1">bemerkte</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Mijn hoofd, als met een schild, <rhyme label="b" type="m" corresp="#s7:l2">bedekt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laat nooit des boozen wensch <rhyme label="a" type="f">gelukken</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Maar stuit hem, eer zijn hand mij <rhyme label="b" type="m">treff'</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Verhinder zijne <rhyme label="a" type="f" corresp="#s8:l1">gruwelstukken</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Opdat hij zich niet trotsch <rhyme label="b" type="m" corresp="#s8:l2">verheff'</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Doe tot vergelding, Heer der <rhyme label="a" type="f">heeren</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Op mijner haatren moedig <rhyme label="b" type="m">hoofd</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Den smaad der lippen <rhyme label="a" type="f" corresp="#s9:l1">wederkeeren</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die mij van al mijn eer <rhyme label="b" type="m" corresp="#s9:l2">berooft</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Schud, daar zij dus mijn' roem <rhyme label="a" type="f">verkorten</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Schud vuurge koolen op hen <rhyme label="b" type="m">uit</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">Laat hen in 't vuur, in kuilen <rhyme label="a" type="f" corresp="#s10:l1">storten</rhyme>;</l>
        <l id="s10:l4" met="4" type="-+">Geef hen aan 't naare graf ten <rhyme label="b" type="m" corresp="#s10:l2">buit</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Een lasteraar, een <rhyme label="a" type="f">leugenspreeker</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Zal nooit op aard bevestigd <rhyme label="b" type="m">zijn</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">Men jaag' een' twist- en <rhyme label="a" type="f" corresp="#s11:l1">onrustkweeker</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Totdat hij uit elks oog <rhyme label="b" type="m" corresp="#s11:l2">verdwijn'</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ik weet, dat God, getrouw in 't <rhyme label="a" type="f">richten</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Des armen rechtzaak, daar hij <rhyme label="b" type="m">schreit</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Hoe valsch hem d'ontrouw moog' <rhyme label="a" type="f" corresp="#s12:l1">betigten</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Beslissen zal naar <rhyme label="b" type="m" corresp="#s12:l2">billijkheid</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">De Vroomen zullen U <rhyme label="a" type="f">verhoogen</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Gezegend door uw milde <rhyme label="b" type="m">hand</rhyme>.</l>
        <l id="s13:l3" met="4" type="-+">D'oprechten zullen voor uw <rhyme label="a" type="f" corresp="#s13:l1">oogen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Steeds bloeien in gewenschten <rhyme label="b" type="m" corresp="#s13:l2">stand</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
