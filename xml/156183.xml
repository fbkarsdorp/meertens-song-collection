    <tags/>
    <melody>Lofzang van Maria</melody>
  <author>Barent Pietersz. Kompas</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Mijn God, mijn goet, mijn <rhyme label="a" type="m">al</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Als ick dit <rhyme label="a" type="m" corresp="#s1:l1">jammerdal</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dees Wereldt sal <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Och laet my komen <rhyme label="c" type="m">dan</rhyme>!</l>
        <l id="s1:l5" met="3" type="-+">In 't Hemels <rhyme label="c" type="m" corresp="#s1:l4">Canaan</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Om eeuwigh daer te <rhyme label="b" type="f" corresp="#s1:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Mijn Leven is <rhyme label="a" type="m">onwis</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De Doodt toch seecker <rhyme label="a" type="m" corresp="#s2:l1">is</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dit siet men alle <rhyme label="b" type="f">dagen</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">De tijdt gaet vast sijn <rhyme label="c" type="m">gangh</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Licht wordt ick oock <rhyme label="c" type="m" corresp="#s2:l4">eerlangh</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Na 't duyster Graf <rhyme label="b" type="f" corresp="#s2:l3">gedragen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Och of 't u wel <rhyme label="a" type="m">geviel</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Als dan mijn waerde <rhyme label="a" type="m" corresp="#s3:l1">Ziel</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In u gena t' <rhyme label="b" type="f">ontfangen</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Versterckt my in die <rhyme label="c" type="m">hoop</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Soo sal ick in mijn <rhyme label="c" type="m" corresp="#s3:l4">loop</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Na dese tijdt <rhyme label="b" type="f" corresp="#s3:l3">verlangen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ick denck soo menigh <rhyme label="a" type="m">reys</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met inderlijck <rhyme label="a" type="m" corresp="#s4:l1">gepeys</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hoe of 'et dan sal <rhyme label="b" type="f">wesen</rhyme>?</l>
        <l id="s4:l4" met="3" type="-+">'t Is hier mijn waerde <rhyme label="c" type="m">Heer</rhyme>!</l>
        <l id="s4:l5" met="3" type="-+">Met my wat op en <rhyme label="c" type="m" corresp="#s4:l4">neer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Nu hoopen, dan weer <rhyme label="b" type="f" corresp="#s4:l3">vreesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Och laet ick lieve <rhyme label="a" type="m">Godt</rhyme>!</l>
        <l id="s5:l2" met="3" type="-+">Als dan het zaligh <rhyme label="a" type="m" corresp="#s5:l1">Lodt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">U volle troost <rhyme label="b" type="f">genieten</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Och Heere! laet mijn <rhyme label="c" type="m">hoop</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ten eynde van mijn <rhyme label="c" type="m" corresp="#s5:l4">loop</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">My immers niet <rhyme label="b" type="f" corresp="#s5:l3">ontschieten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick weet, en ick <rhyme label="a" type="m">beken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat ick niet waerdigh <rhyme label="a" type="m" corresp="#s6:l1">ben</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Den Hemel te <rhyme label="b" type="f">be-erven</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Maer Heer mijn schuldt uyt <rhyme label="c" type="m">doet</rhyme>!</l>
        <l id="s6:l5" met="3" type="-+">Om Jesus dierbaer <rhyme label="c" type="m" corresp="#s6:l4">Bloedt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En om zijn bitter <rhyme label="b" type="f" corresp="#s6:l3">Sterven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ick kan het heel wel <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sal my dit heyl <rhyme label="a" type="m" corresp="#s7:l1">geschien</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">'t Moet enckel goetheydt <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Ia dubbel goedtheydt <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die ghy bewijst aen <rhyme label="c" type="m" corresp="#s7:l4">mijn</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">O lieve Godt <rhyme label="b" type="f" corresp="#s7:l3">gepreesen</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Doch mach het wesen <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">Ghy weet wat ick <rhyme label="a" type="m" corresp="#s8:l1">begeer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Och hoort mijn Ziele <rhyme label="b" type="f">suchten</rhyme>!</l>
        <l id="s8:l4" met="3" type="-+">Och mijn beklemt <rhyme label="c" type="m">gemoet</rhyme>!</l>
        <l id="s8:l5" met="3" type="-+">U troost, en hulpe <rhyme label="c" type="m" corresp="#s8:l4">doet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Dat soud my soo <rhyme label="b" type="f" corresp="#s8:l3">verluchten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Och Heer ghy zijt soo <rhyme label="a" type="m">goet</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">Dit geeft mijn Ziele <rhyme label="a" type="m" corresp="#s9:l1">moet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">In 't worst'len en in 't <rhyme label="b" type="f">strijden</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Och! laet de droefheydt <rhyme label="c" type="m">eens</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Na korte tijdt <rhyme label="c" type="m" corresp="#s9:l4">geweens</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Verand'ren in <rhyme label="b" type="f" corresp="#s9:l3">verblijden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Versterckt my in mijn <rhyme label="a" type="m">plicht</rhyme>:</l>
        <l id="s10:l2" met="3" type="-+">En laet ick zijn een <rhyme label="a" type="m" corresp="#s10:l1">licht</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Soo langh ick hier noch <rhyme label="b" type="f">swerve</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">O Heer! in de dees <rhyme label="c" type="m">Woestijn</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En wilt mijn trooster <rhyme label="c" type="m" corresp="#s10:l4">zijn</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Als 't Lichaem komt te <rhyme label="b" type="f" corresp="#s10:l3">sterven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Biet dan mijn Ziel de <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">En brenght s' in 't <rhyme label="a" type="m" corresp="#s11:l1">Vaderlandt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">By u mijn Godt hier <rhyme label="b" type="f">boven</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Dan salse <rhyme label="c" type="m">eeuwighlijck</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">In 't zaligh <rhyme label="c" type="m" corresp="#s11:l4">Hemelrijck</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">U prijsen ende <rhyme label="b" type="f" corresp="#s11:l3">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
