  <author>Augustinus van Teylingen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Devote herten wilt vreugde <rhyme label="a" type="f">rapen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Aensiet hoe schoon is des Hemels <rhyme label="b" type="m">schijn</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Siet doch, van niet heeft hy ’t al <rhyme label="a" type="f" corresp="#s1:l1">gheschapen</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s1:l2">zijn</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Siet doch, van niet heeft hy ’t al <rhyme label="a" type="f" corresp="#s1:l1">gheschapen</rhyme>:</l>
        <l id="s1:l6" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s1:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aensiet de kruyden seer groene <rhyme label="a" type="f">spruyten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die daer ghenesen sieckt’ en <rhyme label="b" type="m">pijn</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Aensiet haer schoonheyt, en haer <rhyme label="a" type="f" corresp="#s2:l1">virtuyten</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s2:l2">zijn</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Aensiet haer schoonheyt, en haer <rhyme label="a" type="f" corresp="#s2:l1">virtuyten</rhyme>:</l>
        <l id="s2:l6" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s2:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Aensiet de Lelien wijt <rhyme label="a" type="f">ontloken</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Thynnis, Lavender, <rhyme label="b" type="m">Roosemarijn</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Aensiet de Rooskens vol soete <rhyme label="a" type="f" corresp="#s3:l1">roken</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s3:l2">zijn</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Aensiet de Rooskens vol soete <rhyme label="a" type="f" corresp="#s3:l1">roken</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s3:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Siet al de bloemkens met goet <rhyme label="a" type="f">verstande</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Den siecken zijn sy een <rhyme label="b" type="m">medecijn</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Siet haer coleuren <rhyme label="a" type="f" corresp="#s4:l1">menigerhande</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s4:l2">zijn</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Siet haer coleuren <rhyme label="a" type="f" corresp="#s4:l1">menigerhande</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s4:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Aensiet de boomen met al haer <rhyme label="a" type="f">vruchten</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En die wijngaerden met haren <rhyme label="b" type="m">wijn</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Aensiet de voghelkens inder <rhyme label="a" type="f" corresp="#s5:l1">luchten</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s5:l2">zijn</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Aensiet de voghelkens inder <rhyme label="a" type="f" corresp="#s5:l1">luchten</rhyme>:</l>
        <l id="s5:l6" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s5:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Siet de ghesteenten van grooter <rhyme label="a" type="f">weerden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die klaerder blincken dan <rhyme label="b" type="m">cristallijn</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Siet alle schoonheyt op deser <rhyme label="a" type="f" corresp="#s6:l1">eerden</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s6:l2">zijn</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Siet alle schoonheyt op deser <rhyme label="a" type="f" corresp="#s6:l1">eerden</rhyme>:</l>
        <l id="s6:l6" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s6:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Siet ghy de menschen schoon van <rhyme label="a" type="f">lichame</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Fraey van fatsoen ende leden <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Suyver van aensicht, ooghen <rhyme label="a" type="f" corresp="#s7:l1">bequame</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s7:l2">zijn</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Suyver van aensicht, ooghen <rhyme label="a" type="f" corresp="#s7:l1">bequame</rhyme>:</l>
        <l id="s7:l6" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s7:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Aensiet de Son ende Mane <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Aensiet de Sterren van klaren <rhyme label="b" type="m">schijn</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Siet hoe sy blincken aan ’s Hemels <rhyme label="a" type="f" corresp="#s8:l1">throone</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s8:l2">zijn</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Siet hoe sy blincken aan ’s Hemels <rhyme label="a" type="f" corresp="#s8:l1">throone</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Denckt dan hoe schoon moet den Schepper <rhyme label="b" type="m" corresp="#s8:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hoort ghy hier konstich op d’Orgel <rhyme label="a" type="f">spelen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Op instrumenten, Musijck <rhyme label="b" type="m">divijn</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Hoort ghy oock singen met soete <rhyme label="a" type="f" corresp="#s9:l1">kelen</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Denckt hoe soet sal ’t in den Hemel <rhyme label="b" type="m" corresp="#s9:l2">zijn</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Hoort ghy oock singen met soete <rhyme label="a" type="f" corresp="#s9:l1">kelen</rhyme>:</l>
        <l id="s9:l6" met="4" type="-+">Denckt hoe soet sal ’t in den Hemel <rhyme label="b" type="m" corresp="#s9:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Alle vreughdt die men hier mach <rhyme label="a" type="f">bedrijven</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En mach maer dueren een kort <rhyme label="b" type="m">termijn</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Maer sy sal in der eeuwigheydt <rhyme label="a" type="f" corresp="#s10:l1">blijven</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Voor die by Godt in den Hemel <rhyme label="b" type="m" corresp="#s10:l2">zijn</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Maer sy sal in der eeuwigheydt <rhyme label="a" type="f" corresp="#s10:l1">blijven</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Voor die by Godt in den Hemel <rhyme label="b" type="m" corresp="#s10:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Laet ons de werelt gheheel <rhyme label="a" type="f">versaken</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Met al haer boosheydt na Godts <rhyme label="b" type="m">doctrijn</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Soo sullen wy in den Hemel <rhyme label="a" type="f" corresp="#s11:l1">smaken</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Hoe soet en schoon dat het dat daer sal <rhyme label="b" type="m" corresp="#s11:l2">zijn</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Soo sullen wy in den Hemel <rhyme label="a" type="f" corresp="#s11:l1">smaken</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Hoe soet en schoon dat het dat daer sal <rhyme label="b" type="m" corresp="#s11:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Lof zy den Schepper der <rhyme label="a" type="f">creaturen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Die alle dinghen gheschapen <rhyme label="b" type="m">heeft</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Glori’ zy hem nu en t’allen <rhyme label="a" type="f" corresp="#s12:l1">uren</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Die ’t onderhoudt en voedsel <rhyme label="b" type="m" corresp="#s12:l2">geeft</rhyme>.</l>
        <l id="s12:l5" met="4" type="-+">Glori’ zy hem nu en t’allen <rhyme label="a" type="f" corresp="#s12:l1">uren</rhyme></l>
        <l id="s12:l6" met="4" type="-+">Die ’t onderhoudt en voedsel <rhyme label="b" type="m" corresp="#s12:l2">geeft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
