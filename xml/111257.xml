  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Adju schoon <rhyme label="a" type="f">Rooselinde</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Voorwerp van myn liefde <rhyme label="b" type="m">teer</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Ik beklaeg myn <rhyme label="a" type="f" corresp="#s1:l1">beminden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Adju tot dat ik <rhyme label="b" type="m" corresp="#s1:l2">keer</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Ik ga myn nu <rhyme label="c" type="f">begeeven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En varen door de <rhyme label="d" type="m">stroom</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Adju myn troost myn <rhyme label="c" type="f" corresp="#s1:l5">leeven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Tot dat ik <rhyme label="d" type="m" corresp="#s1:l6">wederkoom</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ag ag hoe is het <rhyme label="a" type="f">mogelyk</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wat zeg je Liefje <rhyme label="b" type="m">zoet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Is het zoo <rhyme label="a" type="f" corresp="#s2:l1">onmedogelyk</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Op deezen dag gy <rhyme label="b" type="m" corresp="#s2:l2">doet</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Is dat de belofte op <rhyme label="c" type="f">hede</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die gy my hebt <rhyme label="d" type="m">gedaen</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Stelt gy my zoo te <rhyme label="c" type="f" corresp="#s2:l5">vreede</rhyme>?</l>
        <l id="s2:l8" met="3" type="-+">Voor dat gy heen zult <rhyme label="d" type="m" corresp="#s2:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">'t Is waer myn liefste <rhyme label="a" type="f">matroone</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ik heb u belooft myn <rhyme label="b" type="m">trouw</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wy moeten naer <rhyme label="a" type="f" corresp="#s3:l1">Lisbonne</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Zoete lief omhelst my <rhyme label="b" type="m" corresp="#s3:l2">gou</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Ik heb gewaerschouwt <rhyme label="c" type="f">vader</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Moeder en Zuster <rhyme label="d" type="m">meê</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Als ik kom weer wy zullen te <rhyme label="c" type="f" corresp="#s3:l5">gader</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ons hart stellen in <rhyme label="d" type="m" corresp="#s3:l6">vreê</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">U weggaen zijn myn <rhyme label="a" type="f">wonden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Het baert my menig <rhyme label="b" type="m">zugt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Al van de dood <rhyme label="a" type="f" corresp="#s4:l1">verslonden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Og og wat <rhyme label="b" type="m" corresp="#s4:l2">ongenugt</rhyme>!</l>
        <l id="s4:l5" met="3" type="-+">Ik zal laeten veel <rhyme label="c" type="f">traenen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Maer gy en acht het <rhyme label="d" type="m">niet</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Wat droefheid zal mijn <rhyme label="c" type="f" corresp="#s4:l5">baenen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">In veel ander <rhyme label="d" type="m" corresp="#s4:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Aenziet de sterne <rhyme label="a" type="f">steilen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Den Hemel toond <rhyme label="b" type="m">gewis</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">De wind vernield ons <rhyme label="a" type="f" corresp="#s5:l1">zeilen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Myn wegvaert zeker <rhyme label="b" type="m" corresp="#s5:l2">is</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Adju myn <rhyme label="c" type="f">Rooselinde</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Myn zoeten Engel <rhyme label="d" type="m">teer</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">'k beklaeg u myn <rhyme label="c" type="f" corresp="#s5:l5">beminde</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Adju tot dat ik <rhyme label="d" type="m" corresp="#s5:l6">keer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Myn hert vol schrik en <rhyme label="a" type="f">beeven</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Og Liefje wat een <rhyme label="b" type="m">pijn</rhyme>!</l>
        <l id="s6:l3" met="3" type="-+">Gaet ge u op Zee <rhyme label="a" type="f" corresp="#s6:l1">begeeven</rhyme>?</l>
        <l id="s6:l4" met="3" type="-+">Blyft tog nog wat by <rhyme label="b" type="m" corresp="#s6:l2">mijn</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Maer al u <rhyme label="c" type="f">lieftaligheden</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Werd mijn geluk <rhyme label="d" type="m">vergaen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Adju myn <rhyme label="c" type="f" corresp="#s6:l5">Uitgeleezen</rhyme>!</l>
        <l id="s6:l8" met="3" type="-+">Doet my de dood <rhyme label="d" type="m" corresp="#s6:l6">doorstaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Niemand kan myn <rhyme label="a" type="f">bekooren</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als Roselinden <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ik was liever nooyd <rhyme label="a" type="f" corresp="#s7:l1">Geboren</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Als brengen uw in <rhyme label="b" type="m" corresp="#s7:l2">Geween</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Gy weet dat ik ben <rhyme label="c" type="f">zwanger</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En ben van u <rhyme label="d" type="m">bevrugt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En fopt my dog niet <rhyme label="c" type="f" corresp="#s7:l5">langer</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Soo sprak zy met een <rhyme label="d" type="m" corresp="#s7:l6">zugt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hoe bitter valt het <rhyme label="a" type="f">scheiden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wat droefheid en wat <rhyme label="b" type="m">pyn</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ik hoop God zal myn <rhyme label="a" type="f" corresp="#s8:l1">leiden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Op See myn Trooster <rhyme label="b" type="m" corresp="#s8:l2">zyn</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Minnaer houd op van <rhyme label="c" type="f">klaegen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ik ben voor u te <rhyme label="d" type="m">pand</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Gy staet in myn <rhyme label="c" type="f" corresp="#s8:l5">behaegen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Daer is myn <rhyme label="d" type="m" corresp="#s8:l6">regterhand</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Vaer wel schoon <rhyme label="a" type="f">Rooselinde</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Vaer wel myn liefste <rhyme label="b" type="m">lam</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Ik kan geen schoonder <rhyme label="a" type="f" corresp="#s9:l1">vinde</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">In het zoete <rhyme label="b" type="m" corresp="#s9:l2">Amsterdam</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Ik heb u belooft te <rhyme label="c" type="f">trouwen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Soo dra ik koom aen <rhyme label="d" type="m">land</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En maeken van u een <rhyme label="c" type="f" corresp="#s9:l5">vrouwe</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Soette liefje houd u <rhyme label="d" type="m" corresp="#s9:l6">Constand</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ik gaa u hier <rhyme label="a" type="f">verlaeten</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Adju dan al te <rhyme label="b" type="m">mael</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">'t Treuren kan niet <rhyme label="a" type="f" corresp="#s10:l1">baeten</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Gedagt in 't <rhyme label="b" type="m" corresp="#s10:l2">generael</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Adju dan Vader en <rhyme label="c" type="f">Moeder</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En Susters in 't <rhyme label="d" type="m">Getal</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Dat Godt is uw <rhyme label="c" type="f" corresp="#s10:l5">behoeder</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">En ons bewaeren <rhyme label="d" type="m" corresp="#s10:l6">al</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
