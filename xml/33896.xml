  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs den dagh begon te <rhyme label="a" type="f">klaren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Jesus in den Tempel <rhyme label="b" type="m">quaem</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'t Volk quam al by hem <rhyme label="a" type="f" corresp="#s1:l1">vergaren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Aengelokt door sijne <rhyme label="b" type="m" corresp="#s1:l2">faem</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En hy gingh daer sitten <rhyme label="c" type="m">neer</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Om te preeken sijne <rhyme label="c" type="m" corresp="#s1:l5">Leer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maer de boose <rhyme label="a" type="f">Phariseën</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Broghten voor hem eene <rhyme label="b" type="m">Vrouw</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die sy on-eer <rhyme label="a" type="f" corresp="#s2:l1">overstreën</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Tegens haren Eghten <rhyme label="b" type="m" corresp="#s2:l2">Trouw</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">En sy seyden, deese <rhyme label="c" type="m">Vrouw</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Heeft gebrooken haren <rhyme label="c" type="m" corresp="#s2:l5">Trouw</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Moyses die heeft ons <rhyme label="a" type="f">gebooden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">In sijn Goddelijke <rhyme label="b" type="m">Wet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat men stenigen, en <rhyme label="a" type="f" corresp="#s3:l1">dooden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Moet, die haer soo heeft <rhyme label="b" type="m" corresp="#s3:l2">besmet</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Wat geeft gy nu voor <rhyme label="c" type="m">bescheydt</rhyme>?</l>
        <l id="s3:l6" met="4" type="+-">Seyden sy uyt <rhyme label="c" type="m" corresp="#s3:l5">listigheydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Jesus boogh ter aerden <rhyme label="a" type="f">needer</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Schreeft wat met sijn vinger <rhyme label="b" type="m">daer</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Maer sy vraeghden hem al <rhyme label="a" type="f" corresp="#s4:l1">weder</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Hy rees op, en seydt tot <rhyme label="b" type="m" corresp="#s4:l2">haer</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Die van u is sonder <rhyme label="c" type="m">sond'</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Smijt den eersten steen <rhyme label="c" type="m" corresp="#s4:l5">terstond'</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Jesus boogh hem weer als <rhyme label="a" type="f">vooren</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Ende schreef wat in het <rhyme label="b" type="m">sant</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Als sy deese woorden <rhyme label="a" type="f" corresp="#s5:l1">hooren</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Maekten sy haer al van <rhyme label="b" type="m" corresp="#s5:l2">kant</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Wegh sy gingen een voor <rhyme label="c" type="m">een</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Jesus bleef met 't Wijf <rhyme label="c" type="m" corresp="#s5:l5">alleen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Jesus recht' hem op, en <rhyme label="a" type="f">vraeghden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Vrouw', waer sijn sy heen <rhyme label="b" type="m">gekeert</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Die u datelijk <rhyme label="a" type="f" corresp="#s6:l1">beklaeghden</rhyme>?</l>
        <l id="s6:l4" met="4" type="+-">Hebben s' u <rhyme label="b" type="m" corresp="#s6:l2">gecondemneert</rhyme>?</l>
        <l id="s6:l5" met="4" type="+-">Oordeelt u nu niemant <rhyme label="c" type="m">meer</rhyme>?</l>
        <l id="s6:l6" met="4" type="+-">Sy antwoorde, niemant <rhyme label="c" type="m" corresp="#s6:l5">Heer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Iesus seyde tot het <rhyme label="a" type="f">Wijve</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">'k Sal u ook niet <rhyme label="b" type="m">oordeelen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Gaet, wilt niet meer quaet <rhyme label="a" type="f" corresp="#s7:l1">bedrijve</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Waght u voort van <rhyme label="b" type="m" corresp="#s7:l2">sondigen</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Goede Iesus, uw' <rhyme label="c" type="m">genaed'</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Overtreft der menschen <rhyme label="c" type="m" corresp="#s7:l5">quaed'</rhyme>.</l>
      </lg>
    </lg>
