<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11889</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Si vous ne voulez me guérir</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEt Hemelrijck dat schoon <rhyme label="a" type="m">Prieel</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dat is de Son, daer wy nae <rhyme label="b" type="f">stralen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">'t Zijn de gulde <rhyme label="b" type="f" corresp="#s1:l2">Zaelen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">En dat schoon <rhyme label="a" type="m" corresp="#s1:l1">Juweel</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Waer nae de vroome mensch <rhyme label="c" type="m">verlanght</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">Alwaer hy dan des levens Kroon <rhyme label="c" type="m" corresp="#s1:l5">ontfanght</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Daer met verheven <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Hy blijdschap vind en <rhyme label="d" type="m" corresp="#s1:l7">rust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">God woont hier self in dese <rhyme label="a" type="m">stad</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Waer in geen oogh sich kan <rhyme label="b" type="f">versaden</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Noch in dees <rhyme label="b" type="f" corresp="#s2:l2">weldaden</rhyme>.</l>
        <l id="s2:l4" met="3" type="+-">O geluckigh <rhyme label="a" type="m" corresp="#s2:l1">pad</rhyme>!</l>
        <l id="s2:l5" met="4" type="-+">Waer alle vreughd en <rhyme label="c" type="m">saligheyt</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">In Godt alleen, en hier, verborgen <rhyme label="c" type="m" corresp="#s2:l5">leyt</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Een leven dat nu <rhyme label="d" type="m">vry</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Is van <rhyme label="d" type="m" corresp="#s2:l7">slaverny</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gods aengesicht blinckt hel en <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Jae klaerder als de Son van <rhyme label="b" type="f">verre</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Of de gulden <rhyme label="b" type="f" corresp="#s3:l2">sterren</rhyme>:</l>
        <l id="s3:l4" met="3" type="+-">O wel schoon <rhyme label="a" type="m" corresp="#s3:l1">Autaer</rhyme>!</l>
        <l id="s3:l5" met="4" type="-+">Daer d'Englen staen met soet <rhyme label="c" type="m">geklangh</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">En galmen uyt een Goddelijck <rhyme label="c" type="m" corresp="#s3:l5">gesangh</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Van Godes <rhyme label="d" type="m">heerlijckheyt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En van sijn <rhyme label="d" type="m" corresp="#s3:l7">Majesteyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dit Paradijs, dit Heyligh <rhyme label="a" type="m">huys</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ierusalem, daer wy na <rhyme label="b" type="f">haecken</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Om u vreughd te <rhyme label="b" type="f" corresp="#s4:l2">smaecken</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">En dat soet <rhyme label="a" type="m" corresp="#s4:l1">geruys</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dat is een erf en lustigh <rhyme label="c" type="m">landt</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Seer schoon gebouwt van Godes eygen <rhyme label="c" type="m" corresp="#s4:l5">hand</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">De stoel van sijn <rhyme label="d" type="m">verbondt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Geheyt op vaste <rhyme label="d" type="m" corresp="#s4:l7">grond</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De Burgery van dit <rhyme label="a" type="m">Paleys</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat zijn de lieve <rhyme label="b" type="f">Seraphimen</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">En de <rhyme label="b" type="f" corresp="#s5:l2">Cherubimen</rhyme>:</l>
        <l id="s5:l4" met="3" type="+-">Waer dat reys op <rhyme label="a" type="m" corresp="#s5:l1">reys</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Wanneer het Choor der Englen <rhyme label="c" type="m">singht</rhyme>,</l>
        <l id="s5:l6" met="5" type="-+">Alleluja, het al van vreughde <rhyme label="c" type="m" corresp="#s5:l5">springht</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Daer 't Lam sit op den <rhyme label="d" type="m">Throon</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En hoort dien soeten <rhyme label="d" type="m" corresp="#s5:l7">toon</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">‘6. Hoe klim ick doch ten Hemel <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">‘Om in dees Heylge vreughd te <rhyme label="b" type="f">raecken</rhyme>?</l>
        <l id="s6:l3" met="3" type="+-">‘Leert u self <rhyme label="b" type="f" corresp="#s6:l2">versaecken</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">‘En u self <rhyme label="a" type="m" corresp="#s6:l1">uyt-gaen</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">‘Begint den Hemel hier <rhyme label="c" type="m">bene'en</rhyme>,</l>
        <l id="s6:l6" met="5" type="-+">‘In ziel en hert met aendacht en <rhyme label="c" type="m" corresp="#s6:l5">gebe'en</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">‘En vreest Godt in 't <rhyme label="d" type="m">gemoed</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">‘Als zijnde 't hooghste <rhyme label="d" type="m" corresp="#s6:l7">goed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">‘7. God is een Geest en wort <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">‘In Geest en Waerheyt <rhyme label="b" type="f">aen-gebeeden</rhyme>.</l>
        <l id="s7:l3" met="3" type="+-">‘'t Zijn de gulden <rhyme label="b" type="f" corresp="#s7:l2">reeden</rhyme>.</l>
        <l id="s7:l4" met="3" type="+-">‘Daer is anders <rhyme label="a" type="m" corresp="#s7:l1">geen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">‘Waer door men gaet ten levens <rhyme label="c" type="m">poort</rhyme>.</l>
        <l id="s7:l6" met="5" type="-+">‘Gelooft in Christ, des Vaders eeuwigh <rhyme label="c" type="m" corresp="#s7:l5">woort</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">‘Sijn wegh ten leven <rhyme label="d" type="m">leyt</rhyme>:</l>
        <l id="s7:l8" met="3" type="-+">‘Hy is de <rhyme label="d" type="m" corresp="#s7:l7">saligheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
