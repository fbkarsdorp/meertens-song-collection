  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Iesus met sijn Jongers <rhyme label="a" type="m">sat</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En 't Avond-mael met haer-lie <rhyme label="a" type="m" corresp="#s1:l1">at</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo voelde hy van <rhyme label="b" type="f">binnen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ontsteltheyt in sijn <rhyme label="b" type="f" corresp="#s1:l3">sinnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy seyde, een van u-lie <rhyme label="a" type="m">wis</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die met mijn aen de Tafel <rhyme label="a" type="m" corresp="#s2:l1">is</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die sal te vroeger <rhyme label="b" type="f">spaden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Mijn schandelijk <rhyme label="b" type="f" corresp="#s2:l3">verraden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dus de Discipulen met <rhyme label="a" type="m">haest</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Wierden bedroeft, en seer <rhyme label="a" type="m" corresp="#s3:l1">verbaest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En seyden vol van <rhyme label="b" type="f">vreesen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">O Heer, souw ik het <rhyme label="b" type="f" corresp="#s3:l3">weesen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Van uwer twaliven <rhyme label="a" type="m">getal</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Seydt hy, het eene weesen <rhyme label="a" type="m" corresp="#s4:l1">sal</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die welk met mijn <rhyme label="b" type="f">gelijke</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Met d'handt in schootel <rhyme label="b" type="f" corresp="#s4:l3">strijke</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die is 't die welke mijn <rhyme label="a" type="m">verraet</rhyme>;</l>
        <l id="s5:l2" met="4" type="-+">Maer 's Menschen Soon wel heenen <rhyme label="a" type="m" corresp="#s5:l1">gaet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gelijk de <rhyme label="b" type="f">Prophetye</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In d' Heyl'ge Schrift <rhyme label="b" type="f" corresp="#s5:l3">belye</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer wee dien Mensche die het <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Het souw hem weesen beeter <rhyme label="a" type="m" corresp="#s6:l1">goet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat hy tot sulk <rhyme label="b" type="f">onvroome</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Noyt leeven had <rhyme label="b" type="f" corresp="#s6:l3">bekoome</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En Iudas, die dit boos seyt <rhyme label="a" type="m">deed'</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Antwoordt met d' anderen al <rhyme label="a" type="m" corresp="#s7:l1">meed'</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Rabbi, souw ik het <rhyme label="b" type="f">weesen</rhyme>?</l>
        <l id="s7:l4" met="3" type="-+">Gy seght, seyd hy, tot <rhyme label="b" type="f" corresp="#s7:l3">deesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hoort de Discipels onder <rhyme label="a" type="m">haer</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Elkander vraeghden wie oft <rhyme label="a" type="m" corresp="#s8:l1">waer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En Petrus vraeght <rhyme label="b" type="f">bescheyde</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Iohan, van wie hy 't <rhyme label="b" type="f" corresp="#s8:l3">seyde</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ioannes die lagh aen de <rhyme label="a" type="m">borst</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Van Jesus, dus hy 't vragen <rhyme label="a" type="m" corresp="#s9:l1">dorst</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Hy was dien <rhyme label="b" type="f">wel-beminde</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Die Iesus <rhyme label="b" type="f" corresp="#s9:l3">wel-beminde</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dien ik toe-reyk 't gedoopte <rhyme label="a" type="m">broot</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En gaft Iudas <rhyme label="a" type="m" corresp="#s10:l1">Ischarioot</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Als die dat heeft <rhyme label="b" type="f">gegeeten</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Van Satan is <rhyme label="b" type="f" corresp="#s10:l3">beseeten</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En Jesus seyde, 't geen gy <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Brenght dat te weegen met der <rhyme label="a" type="m" corresp="#s11:l1">spoet</rhyme>;</l>
        <l id="s11:l3" met="3" type="-+">Maer d'ander niet <rhyme label="b" type="f">verstonden</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Wat Jesus nu <rhyme label="b" type="f" corresp="#s11:l3">vermonden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Want Iudas de buyldrager <rhyme label="a" type="m">was</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Soo meynden sy dat hy wat <rhyme label="a" type="m" corresp="#s12:l1">ras</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Most koopen voor d' <rhyme label="b" type="f">Feest-dagen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Of aen den armen <rhyme label="b" type="f" corresp="#s12:l3">dragen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dus als hy had den brok <rhyme label="a" type="m">ontfaen</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Is haestelijk van daer <rhyme label="a" type="m" corresp="#s13:l1">gegaen</rhyme>;</l>
        <l id="s13:l3" met="3" type="-+">Het was al naght <rhyme label="b" type="f">geworden</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Als hy hem van daer <rhyme label="b" type="f" corresp="#s13:l3">porden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">En Jesus seydt, nu is <rhyme label="a" type="m">verklaert</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Des Menschen Soon hier op der <rhyme label="a" type="m" corresp="#s14:l1">Aerdt</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">En Godt die is ook <rhyme label="b" type="f">meede</rhyme></l>
        <l id="s14:l4" met="3" type="-+">In hem verklaert <rhyme label="b" type="f" corresp="#s14:l3">alreede</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">En soo Godt in hem is <rhyme label="a" type="m">verklaert</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Sal hy hem ook wel houden <rhyme label="a" type="m" corresp="#s15:l1">waert</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Weer in sijn selfs <rhyme label="b" type="f">voorware</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Met haest hem te <rhyme label="b" type="f" corresp="#s15:l3">verklare</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
