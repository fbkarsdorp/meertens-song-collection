      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">KOmt trage Mensch te <rhyme label="a" type="f">vooren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En opent doch u <rhyme label="a" type="f" corresp="#s1:l1">ooren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ey ! neemt Gods Roepingh <rhyme label="b" type="m">waer</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">'t Is Godt den Heer <rhyme label="c" type="f">Almachtigh</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die roept u, Sondaer, <rhyme label="c" type="f" corresp="#s1:l4">krachtigh</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Maeckt sijn gunst' <rhyme label="b" type="m" corresp="#s1:l3">openbaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy roept tot uwer <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Niet dat ghy soud't <rhyme label="a" type="f" corresp="#s2:l1">verlaten</rhyme></l>
        <l id="s2:l3" met="3" type="-+">'t Gheen dat heel kost'lijck <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Of vreucht en rust kan <rhyme label="c" type="f">gheven</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Of u maeckt hoogh <rhyme label="c" type="f" corresp="#s2:l4">verheven</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Of u staet stelt <rhyme label="b" type="m" corresp="#s2:l3">ghewis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy roept u uyt de <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En uyt stinckende <rhyme label="a" type="f" corresp="#s3:l1">gronden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van 's Duyvels <rhyme label="b" type="m">vuyligheyt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghequetst vol vuyle <rhyme label="c" type="f">wonden</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Leght ghy daer vast <rhyme label="c" type="f" corresp="#s3:l4">ghebonden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Door Satans list <rhyme label="b" type="m" corresp="#s3:l3">verleyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy, die als vuyle <rhyme label="a" type="f">vaten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Selfs komt den Heer te <rhyme label="a" type="f" corresp="#s4:l1">haten</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ontbloodt van deucht en <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wat heeft den Heer <rhyme label="c" type="f">bewoghen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat hy sijn gunst'ghe <rhyme label="c" type="f" corresp="#s4:l4">ooghen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Op u laet dalen <rhyme label="b" type="m" corresp="#s4:l3">ne'er</rhyme> ?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">GEen Pen, noch wijse <rhyme label="a" type="f">monden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En konnen niet <rhyme label="a" type="f" corresp="#s5:l1">verkonden</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Den gunst van Godt den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die u sijn stem laet <rhyme label="c" type="f">hooren</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Komt uyt den dreck te <rhyme label="c" type="f" corresp="#s5:l4">vooren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ghy Sondaers u <rhyme label="b" type="m" corresp="#s5:l3">bekeer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wilt u tot my <rhyme label="a" type="f">begheven</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Het saligh blijde <rhyme label="a" type="f" corresp="#s6:l1">leven</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Heb ick voor u <rhyme label="b" type="m">bereyt</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Laet u bekeeringh <rhyme label="c" type="f">blijcken</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Soo sal ick u <rhyme label="c" type="f" corresp="#s6:l4">verrijcken</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Met eer en <rhyme label="b" type="m" corresp="#s6:l3">Majesteyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">WEl, sult ghy nu in <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">God niet gehoorsaem <rhyme label="a" type="f" corresp="#s7:l1">wesen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">In 't gheen ten goed' u <rhyme label="b" type="m">streckt</rhyme> ?</l>
        <l id="s7:l4" met="3" type="-+">Och Mensch ! en wilt niet <rhyme label="c" type="f">schromen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Nu tot u Godt te <rhyme label="c" type="f" corresp="#s7:l4">komen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Die door sijn Woordt u <rhyme label="b" type="m" corresp="#s7:l3">treckt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghedenckt hoe veele <rhyme label="a" type="f">ooren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dien stem niet moghen <rhyme label="a" type="f" corresp="#s8:l1">hooren</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Die ghy dus vriend'lijck <rhyme label="b" type="m">hoort</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Soo ghy dit komt <rhyme label="c" type="f">verachten</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Versuymt, niet gaet <rhyme label="c" type="f" corresp="#s8:l4">betrachten</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Schrick'lijck ghy Godt <rhyme label="b" type="m" corresp="#s8:l3">verstoort</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Met veel droevige <rhyme label="a" type="f">slaghen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Sal Godt den ghenen <rhyme label="a" type="f" corresp="#s9:l1">plaghen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Die sijn Roepingh <rhyme label="b" type="m">versma'en</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En oock sijn wil wel <rhyme label="c" type="f">weten</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Moet-willens die <rhyme label="c" type="f" corresp="#s9:l4">vergheten</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En van sijn wegh <rhyme label="b" type="m" corresp="#s9:l3">af-gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
