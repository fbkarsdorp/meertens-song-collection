  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MAer siet daer Judas <rhyme label="a" type="f">koomen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">'t Hooft der <rhyme label="b" type="m">verraderen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En heeft met hem <rhyme label="a" type="f" corresp="#s1:l1">genoomen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">De dartigh <rhyme label="b" type="m" corresp="#s1:l2">penningen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Daer hy den Soone <rhyme label="c" type="m">Goodts</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Soo veyl om had <rhyme label="d" type="m">gekoght</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En tot den noodt des <rhyme label="c" type="m" corresp="#s1:l5">doodts</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Verraderlijk <rhyme label="d" type="m" corresp="#s1:l6">gebroght</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy wilse weeder <rhyme label="a" type="f">geeven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En smaktse voor de <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">'k Heb groote Sondt <rhyme label="a" type="f" corresp="#s2:l1">bedreeven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Verkoght 't reghtvaerdigh <rhyme label="b" type="m" corresp="#s2:l2">bloedt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En soo mistroostigh <rhyme label="c" type="m">scheydt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Verliesende de <rhyme label="d" type="m">hoop</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Door sijn <rhyme label="c" type="m" corresp="#s2:l5">kleynmoedigheydt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Verworght hem aen een <rhyme label="d" type="m" corresp="#s2:l6">knoop</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Joden haer <rhyme label="a" type="f">beraeden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wat sal men met dit <rhyme label="b" type="m">geldt</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Sy gaen het nogh <rhyme label="a" type="f" corresp="#s3:l1">bestaeden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En koopen nogh een <rhyme label="b" type="m" corresp="#s3:l2">veldt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Om daer te maken <rhyme label="c" type="m">van</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Begraffenis <rhyme label="d" type="m">bequaem</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Voor alle vreemde <rhyme label="c" type="m" corresp="#s3:l5">man</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Bloet-acker is den <rhyme label="d" type="m" corresp="#s3:l6">naem</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Beveynstheydt deeser <rhyme label="a" type="f">Jooden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Is wonderlijke <rhyme label="b" type="m">sleght</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sy schroomen niet te <rhyme label="a" type="f" corresp="#s4:l1">dooden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En dat nogh tegen <rhyme label="b" type="m" corresp="#s4:l2">reght</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Maer 't raken van het <rhyme label="c" type="m">geldt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Haer nu besmetten <rhyme label="d" type="m">moght</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dat s' hadden selfs <rhyme label="c" type="m" corresp="#s4:l5">getelt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En 't bloede voor <rhyme label="d" type="m" corresp="#s4:l6">gekoght</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dus doen sy <rhyme label="a" type="f">wederomme</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Voor 't Recht-huys van <rhyme label="b" type="m">Pilaet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer binnen in te <rhyme label="a" type="f" corresp="#s5:l1">komme</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dat aghten sy voor <rhyme label="b" type="m" corresp="#s5:l2">quaet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Maer het onnoosel <rhyme label="c" type="m">bloedt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Te leeveren ter <rhyme label="d" type="m">doodt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dat rekenen sy <rhyme label="c" type="m" corresp="#s5:l5">goedt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Al is het sonde <rhyme label="d" type="m" corresp="#s5:l6">groot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O Jesu, Heer der <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die 't al hebt in uw <rhyme label="b" type="m">maght</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Hoe laet g'u dus <rhyme label="a" type="f" corresp="#s6:l1">tracteeren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">In deese droeve <rhyme label="b" type="m" corresp="#s6:l2">naght</rhyme>?</l>
        <l id="s6:l5" met="3" type="-+">Ogh! 't is ons Sonden <rhyme label="c" type="m">schuldt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dat gy nu dus veel <rhyme label="d" type="m">lijdt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Voor ons gy sterven <rhyme label="c" type="m" corresp="#s6:l5">sult</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Op dat wy sijn <rhyme label="d" type="m" corresp="#s6:l6">bevrijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
