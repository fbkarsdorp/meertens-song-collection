    <tags>
      <tag>Easter song</tag>
    </tags>
    <melody>Christ ist erstanden</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Cristus is <rhyme label="a" type="f">opgestanden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">al wt die Joden haer <rhyme label="a" type="f" corresp="#s1:l1">handen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">dus willen wij allegader vrolijck <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s1:l4" met="4" type="+-">cristus zal onse verlosser <rhyme label="b" type="m" corresp="#s1:l3">zijn</rhyme></l>
        <l id="s1:l5" met="2" type="-+"><rhyme label="c" type="m">Kijrieleijs</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waer cristus niet <rhyme label="a" type="f">verresen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">al met zijn goddelycke <rhyme label="a" type="f" corresp="#s2:l1">wesen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">wij waren gebleuen in groter <rhyme label="b" type="m">noot</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Wij mosten al steruen den Ewyghen <rhyme label="b" type="m" corresp="#s2:l3">doet</rhyme></l>
        <l id="s2:l5" met="2" type="-+"><rhyme label="c" type="m">Kijrieleijs</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Christe die voer ten <rhyme label="a" type="f">hellen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">om daer in vreden te <rhyme label="a" type="f" corresp="#s3:l1">stellen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">die in duijsternisse laghen so zeer <rhyme label="b" type="m">beswaert</rhyme></l>
        <l id="s3:l4" met="4" type="+-">god heeftse met zijn eewijghe licht <rhyme label="b" type="m" corresp="#s3:l3">verclaert</rhyme></l>
        <l id="s3:l5" met="2" type="-+"><rhyme label="c" type="m">Kijrieleijs</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy princen ghij helsche <rhyme label="a" type="f">soorten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">doet op v mueren en v <rhyme label="a" type="f" corresp="#s4:l1">poorten</rhyme></l>
        <l id="s4:l3" met="4" type="-+">uwen rooff die wert u nu <rhyme label="b" type="m">onthaelt</rhyme></l>
        <l id="s4:l4" met="4" type="+-">En christus heeft al onse schult <rhyme label="b" type="m" corresp="#s4:l3">betaelt</rhyme></l>
        <l id="s4:l5" met="2" type="-+"><rhyme label="c" type="m">Kyrieleijs</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Cristus met groter <rhyme label="a" type="f">eerwaerden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">sy lieue &lt;moeder&gt; hij <rhyme label="a" type="f" corresp="#s5:l1">openbaerden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">zijn lichaem claer bouen der sonnen <rhyme label="b" type="m">schijn</rhyme></l>
        <l id="s5:l4" met="4" type="+-">onsterffelijck verlost wt alle <rhyme label="b" type="m" corresp="#s5:l3">pijn</rhyme></l>
        <l id="s5:l5" met="2" type="-+"><rhyme label="c" type="m">Kyrieleijs</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Christus die vantse <rhyme label="a" type="f">wenen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">die suyuer marie <rhyme label="a" type="f" corresp="#s6:l1">magdalenen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">god heeftse vertroost in haer <rhyme label="b" type="m">verdriet</rhyme></l>
        <l id="s6:l4" met="4" type="+-">als eenen hofman tis so <rhyme label="b" type="m" corresp="#s6:l3">geschiet</rhyme></l>
        <l id="s6:l5" met="2" type="-+"><rhyme label="c" type="m">kijrieleijs</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Twee discipulen quamen <rhyme label="a" type="f">gaende</rhyme></l>
        <l id="s7:l2" met="3" type="-+">na Emaus sij waren <rhyme label="a" type="f" corresp="#s7:l1">verslaende</rhyme></l>
        <l id="s7:l3" met="4" type="-+">christus lijden die hadde haer so wel <rhyme label="b" type="m">geloont</rhyme></l>
        <l id="s7:l4" met="4" type="+-">als een pelgrijm heeft hem god <rhyme label="b" type="m" corresp="#s7:l3">verthoont</rhyme></l>
        <l id="s7:l5" met="2" type="-+"><rhyme label="c" type="m">kyrieleijs</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Weest cristus lijden <rhyme label="a" type="f">gedachtich</rhyme></l>
        <l id="s8:l2" met="3" type="-+">hij is dat paeschlam <rhyme label="a" type="f" corresp="#s8:l1">warachtich</rhyme></l>
        <l id="s8:l3" met="4" type="-+">gheoffert anden cruce voor onse <rhyme label="b" type="m">misdaet</rhyme></l>
        <l id="s8:l4" met="4" type="+-">dat dede die Joden haer valschen <rhyme label="b" type="m" corresp="#s8:l3">raet</rhyme></l>
        <l id="s8:l5" met="2" type="-+"><rhyme label="c" type="m">kijrieleijs</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Verblijt v ghij christen int <rhyme label="a" type="f">ghemeijne</rhyme></l>
        <l id="s9:l2" met="3" type="-+">met maria die duyuere <rhyme label="a" type="f" corresp="#s9:l1">fonteijne</rhyme></l>
        <l id="s9:l3" met="4" type="-+">die coopmanschap die Judas heeft <rhyme label="b" type="m">gedaen</rhyme></l>
        <l id="s9:l4" met="4" type="+-">die is ons allen so wel <rhyme label="b" type="m" corresp="#s9:l3">vergaen</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Kyrieleijs. <rhyme label="c" type="m">Alleluya</rhyme></l>
      </lg>
    </lg>
  </text>
