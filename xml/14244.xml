  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IC sie die morghen <rhyme label="a" type="f">sterre</rhyme></l>
        <l id="s1:l2" met="3" type="-+">heer ihesus claer <rhyme label="b" type="m">aenscijn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ic gruetu sonder <rhyme label="a" type="f" corresp="#s1:l1">merren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met alder herten <rhyme label="b" type="m" corresp="#s1:l2">mijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">¶ Och wie mach ic daer <rhyme label="a" type="f">horen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">maken so suet <rhyme label="b" type="m">ghebaer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">het luydet in mijnen <rhyme label="a" type="f" corresp="#s2:l1">ooren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">oft gulden herpen <rhyme label="b" type="m" corresp="#s2:l2">waer</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">¶ O siel wildi mi <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">ende mi bekennen <rhyme label="b" type="m">bat</rhyme></l>
        <l id="s3:l3" met="3" type="-+">ende mi daer mede <rhyme label="a" type="f" corresp="#s3:l1">ghewinnen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">ic ben dijnre herten <rhyme label="b" type="m" corresp="#s3:l2">scat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">¶ Ihesus och lief <rhyme label="a" type="f">vercoren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">mijn troost mijn <rhyme label="b" type="m">toeuerlaet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">verleent mi al te <rhyme label="a" type="f" corresp="#s4:l1">voren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">te volghen uwen <rhyme label="b" type="m" corresp="#s4:l2">raet</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">¶ Wildi bi rade <rhyme label="a" type="f">leuen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">so laet ws selfs <rhyme label="b" type="m">raet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">en wilt dat al <rhyme label="a" type="f" corresp="#s5:l1">begheuen</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">daer uwen sin toe <rhyme label="b" type="m" corresp="#s5:l2">staet</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">¶ Sijn dit die naeste <rhyme label="a" type="f">weghen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">so ben ic seer <rhyme label="b" type="m">veruaert</rhyme></l>
        <l id="s6:l3" met="3" type="-+">natuer die en wils niet <rhyme label="a" type="f" corresp="#s6:l1">pleghen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">het is haren rechten <rhyme label="b" type="m" corresp="#s6:l2">aert</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">¶ O siel slaet op v <rhyme label="a" type="f">oghen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">siet aen mijn bitter <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s7:l3" met="3" type="-+">mijn edel bloet <rhyme label="a" type="f" corresp="#s7:l1">verdroghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">wildi mijn beter <rhyme label="b" type="m" corresp="#s7:l2">sijn</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">¶ Vildi mi niet <rhyme label="a" type="f">begheuen</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">ihesus mijn gulden <rhyme label="b" type="m">pint</rhyme></l>
        <l id="s8:l3" met="3" type="-+">so wil ic v al mijn <rhyme label="a" type="f" corresp="#s8:l1">leuen</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">draghen in minen <rhyme label="b" type="m" corresp="#s8:l2">gront</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">¶ O siel sou ic v <rhyme label="a" type="f">laten</rhyme></l>
        <l id="s9:l2" met="3" type="-+">neen ic in gheenre <rhyme label="b" type="m">stont</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">ic ben om uwer <rhyme label="a" type="f" corresp="#s9:l1">baten</rhyme></l>
        <l id="s9:l4" met="3" type="-+">ter doot toe seer <rhyme label="b" type="m" corresp="#s9:l2">ghewont</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">¶ O heer v bedructe <rhyme label="a" type="f">tranen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">gheeft mi doer v <rhyme label="b" type="m">oetmoet</rhyme></l>
        <l id="s10:l3" met="3" type="-+">en dat ic mits v <rhyme label="a" type="f" corresp="#s10:l1">vermanen</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">mach vercrighen dat eewighe <rhyme label="b" type="m" corresp="#s10:l2">goet</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">¶ O siel ontfaet die <rhyme label="a" type="f">crone</rhyme></l>
        <l id="s11:l2" met="3" type="-+">mijn trou die gheue ic <rhyme label="b" type="m">di</rhyme></l>
        <l id="s11:l3" met="3" type="-+">mi suldi hebben te <rhyme label="a" type="f" corresp="#s11:l1">loone</rhyme></l>
        <l id="s11:l4" met="3" type="-+">en scheyt nv niet van <rhyme label="b" type="m" corresp="#s11:l2">mi</rhyme></l>
      </lg>
    </lg>
  </text>
