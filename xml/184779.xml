  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wat vreugd, ô <rhyme label="a" type="f">Patriotten</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Gy raakt een Vyand <rhyme label="b" type="m">kwyt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die met uw magt dorst <rhyme label="a" type="f" corresp="#s1:l1">spotten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Uw heil steeds heeft <rhyme label="b" type="m" corresp="#s1:l2">benyd</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">U door zyn List <rhyme label="c" type="f">bedroogen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Schoon uit een vreemd <rhyme label="d" type="m">Gewest</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Als naakte Kraai <rhyme label="c" type="f" corresp="#s1:l5">gevloogen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">In ons <rhyme label="d" type="m" corresp="#s1:l6">Gemeenebest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Laat by om tyd <rhyme label="a" type="f">verzoeken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Tot zyn <rhyme label="b" type="m">Verdédiging</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Men blyft zyn Misdaên <rhyme label="a" type="f" corresp="#s2:l1">vloeken</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Want die zyn niet <rhyme label="b" type="m" corresp="#s2:l2">gering</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Zyn Eed, zo duur <rhyme label="c" type="f">gezwooren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Aan 't vrye <rhyme label="d" type="m">Nederland</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Doet tegen hem zich <rhyme label="c" type="f" corresp="#s2:l5">hooren</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">‘Die Volksplaag moet van <rhyme label="d" type="m" corresp="#s2:l6">kant</rhyme>.’</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wie kan zyn <rhyme label="a" type="f">Wanbedryven</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zo groot, zo veel in <rhyme label="b" type="m">tal</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Recht naar hun aard <rhyme label="a" type="f" corresp="#s3:l1">beschryven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Zy overtreffen <rhyme label="b" type="m" corresp="#s3:l2">al</rhyme></l>
        <l id="s3:l5" met="3" type="-+">'t Verraad, ooit <rhyme label="c" type="f">ondernomen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Door eenig snood <rhyme label="d" type="m">Gedrocht</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat Neêrlands val <rhyme label="c" type="f" corresp="#s3:l5">volkomen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Met dien der Vryheid <rhyme label="d" type="m" corresp="#s3:l6">zocht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Zyn List, Bedrog en <rhyme label="a" type="f">Laagen</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Zyn Heerschzucht, <rhyme label="b" type="m">Trouwloosheid</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om Schatten te <rhyme label="a" type="f" corresp="#s4:l1">bejaagen</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Zyn doemenswaard <rhyme label="b" type="m" corresp="#s4:l2">beleid</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Vermeesterden de <rhyme label="c" type="f">Zinnen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van een te zwakken <rhyme label="d" type="m">Prins</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dien hy zyn raad deed <rhyme label="c" type="f" corresp="#s4:l5">minnen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En volgen <rhyme label="d" type="m" corresp="#s4:l6">alleszins</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Vertreeder van 't <rhyme label="a" type="f">vermogen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En Souverein <rhyme label="b" type="m">gezag</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Der Staaten! durft gy <rhyme label="a" type="f" corresp="#s5:l1">poogen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat men u hooren <rhyme label="b" type="m" corresp="#s5:l2">mag</rhyme>!</l>
        <l id="s5:l5" met="3" type="-+">Neen; dat liefst 's <rhyme label="c" type="f">Volksbehoeders</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">U plaatsen by 't <rhyme label="d" type="m">getal</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Van andre Duitsche <rhyme label="c" type="f" corresp="#s5:l5">Broeders</rhyme>.</l>
        <l id="s5:l8" met="3" type="-+">Komt nooit aan Neêrlands <rhyme label="d" type="m" corresp="#s5:l6">Wal</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maar schaf eerst alle <rhyme label="a" type="f">Sehristen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Aan 't Staatsbewind <rhyme label="b" type="m">gemeen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat uw gedrag moet <rhyme label="a" type="f" corresp="#s6:l1">ziften</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En gaa dan schielyk <rhyme label="b" type="m" corresp="#s6:l2">heen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Met een gemoed vol <rhyme label="c" type="f">wroeging</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">De folterendste <rhyme label="d" type="m">straf</rhyme>;</l>
        <l id="s6:l7" met="3" type="-+">Zo smaakt gy nooit <rhyme label="c" type="f" corresp="#s6:l5">vernoeging</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">En wanhoop delft uw <rhyme label="d" type="m" corresp="#s6:l6">graf</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En gy, zyn <rhyme label="a" type="f">Meêgenooten</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">Van 't wanbedryf <rhyme label="b" type="m">bewust</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Al waart ge in Ampt ook <rhyme label="a" type="f" corresp="#s7:l1">Grooten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Krygt loon naar werk, en <rhyme label="b" type="m" corresp="#s7:l2">kuscht</rhyme></l>
        <l id="s7:l5" met="3" type="-+">De roê der wraak, aan 't <rhyme label="c" type="f">dreigen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Opdat ze u 't kwaad <rhyme label="d" type="m">vergeld'</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Am uw misdryven <rhyme label="c" type="f" corresp="#s7:l5">eigen</rhyme>!</l>
        <l id="s7:l8" met="3" type="-+">Ziet, wie ze u heeft <rhyme label="d" type="m" corresp="#s7:l6">besteld</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maar gy, rechtschapen <rhyme label="a" type="f">Braaven</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">Die 't Vaderland <rhyme label="b" type="m">bemint</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Uw Pligt, gelyk <rhyme label="a" type="f" corresp="#s8:l1">Bataaven</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Aan 's Voiks geluk <rhyme label="b" type="m" corresp="#s8:l2">verbindt</rhyme>;</l>
        <l id="s8:l5" met="3" type="-+">Ziet uw bestier <rhyme label="c" type="f">bekroonen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Met heil, met roem en <rhyme label="d" type="m">eer</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">En juicht, ô <rhyme label="c" type="f" corresp="#s8:l5">Vryheids-Zoonen</rhyme>!</l>
        <l id="s8:l8" met="3" type="-+">‘De Dwangzucht heerscht niet <rhyme label="d" type="m" corresp="#s8:l6">meer</rhyme>.’</l>
      </lg>
    </lg>
  </text>
</song>
