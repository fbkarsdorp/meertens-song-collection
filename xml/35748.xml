    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SInt Bonifaes vroom <rhyme label="a" type="m">Martelaer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En Bisschop, leert ons <rhyme label="a" type="m" corresp="#s1:l1">allegaer</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Voor Godes eer te <rhyme label="b" type="f">strijden</rhyme>.</l>
        <l id="s1:l4" met="2" type="-+">Maeckt geen <rhyme label="c" type="m">verschil</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Tegen Godts <rhyme label="c" type="m" corresp="#s1:l4">wil</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Eeuwigh sult uw' <rhyme label="b" type="f" corresp="#s1:l3">verblijden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sint Bonifaes vergeet ons <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die lijden moeten veel <rhyme label="a" type="m" corresp="#s2:l1">verdriet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Van 't Roomsch geloofs <rhyme label="b" type="f">vyanden</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Krijght <rhyme label="c" type="m">vroomigheydt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">
          <rhyme label="c" type="m" corresp="#s2:l4">Stantvastigheyt</rhyme>
        </l>
        <l id="s2:l6" met="3" type="-+">Voor ons, uyt Godes <rhyme label="b" type="f" corresp="#s2:l3">handen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Krijght troost, en hulp in onse <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En staet ons by in onse <rhyme label="a" type="m" corresp="#s3:l1">doodt</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Wilt dan voor ons <rhyme label="b" type="f">ontfangen</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Van Godes <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Sijn Hemels <rhyme label="c" type="m" corresp="#s3:l4">Throon</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Waer na wy al <rhyme label="b" type="f" corresp="#s3:l3">verlangen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Iesu! door Bonifaes <rhyme label="a" type="m">voorspraeck</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Vergunt ons alle dese <rhyme label="a" type="m" corresp="#s4:l1">saeck</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Dat in dit Lant mach <rhyme label="b" type="f">bloeyen</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">U naem en <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Dat meer en <rhyme label="c" type="m" corresp="#s4:l4">meer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">'t Roomsch geloof mach <rhyme label="b" type="f" corresp="#s4:l3">aen-groeyen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
