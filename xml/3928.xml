<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>3928</id>
    <date>
      <year-start>1539</year-start>
      <year-end>1539</year-end>
    </date>
    <location>
      <orginal-name>antwerpen</orginal-name>
      <standard-name>Antwerp, Belgium</standard-name>
      <coordinates>
        <lon>51.2211097</lon>
        <lat>4.3997081</lat>
      </coordinates>
    </location>
    <tags>
      <tag>mystical song</tag>
    </tags>
    <melody>Een Venus' diertje heb ik uitverkoren</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Iesus liden ende sijn <rhyme label="a" type="f">smerte</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Moet ic altoos gedachtich <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ende dragen altijt in mijn <rhyme label="a" type="f" corresp="#s1:l1">herte</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Want hi dat begeert van <rhyme label="b" type="m" corresp="#s1:l2">mi</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Hi is die liefste <rhyme label="c" type="f">mijn</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Daer ick alleen troost op <rhyme label="c" type="f" corresp="#s1:l5">stelle</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Och anders en macht ooc niet <rhyme label="b" type="m" corresp="#s1:l2">sijn</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Wil ic salich hebben de siele <rhyme label="b" type="m" corresp="#s1:l2">mijn</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ic wil mi gaen tot liden <rhyme label="a" type="f">voegen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Na dat ons heer op mi <rhyme label="b" type="m">verhingt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Die hem dair best in laet <rhyme label="a" type="f" corresp="#s2:l1">ghenoegen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Is die wijste diemen <rhyme label="b" type="m" corresp="#s2:l2">vint</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ick ben v lieue <rhyme label="c" type="f">kint</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat ghi so seere <rhyme label="c" type="f" corresp="#s2:l5">bemint</rhyme></l>
        <l id="s2:l7" met="4" type="-+">In liden sidy mi voer <rhyme label="b" type="m" corresp="#s2:l2">ghegaen</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Och mocht ic oock liden <rhyme label="b" type="m" corresp="#s2:l2">saen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och die mit herten wel conde <rhyme label="a" type="f">versinnen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Hoe salich dat hem liden <rhyme label="b" type="m">is</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Hi sout met alder herten <rhyme label="a" type="f" corresp="#s3:l1">beminnen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Hoe wel dat swaer te verdragen <rhyme label="b" type="m" corresp="#s3:l2">is</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Want hier cort is ons <rhyme label="c" type="f">leuen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Alle dinck sal ons <rhyme label="c" type="f" corresp="#s3:l5">begheuen</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Na liden coemt verbliden <rhyme label="b" type="m" corresp="#s3:l2">ghewis</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Alst hier willichlijc gheleden <rhyme label="b" type="m" corresp="#s3:l2">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hoe connen wi ghenoechte <rhyme label="a" type="f">bedriuen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Want ons die propheet Iob <rhyme label="b" type="m">bescrijft</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Daer en is niet dan <rhyme label="a" type="f" corresp="#s4:l1">liden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Hier in deser <rhyme label="b" type="m" corresp="#s4:l2">nederheyt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Alle gheboerne van <rhyme label="c" type="f">vrouwen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Vol drucx ende vol <rhyme label="c" type="f" corresp="#s4:l5">rouwen</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Vol armoeden ende <rhyme label="b" type="m" corresp="#s4:l2">catiuicheyt</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Is onsen tijt voerby <rhyme label="b" type="m" corresp="#s4:l2">gheleyt</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och die dit altoos hadde voer <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Hi soude wel leeren <rhyme label="b" type="m">dooghen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">So wat hem ouer comen <rhyme label="a" type="f" corresp="#s5:l1">sal</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Hier beneden in dit aertsche <rhyme label="b" type="m" corresp="#s5:l2">dal</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Want liden hier sal <rhyme label="c" type="f">ynden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Den eewighen loon <rhyme label="c" type="f" corresp="#s5:l5">vinden</rhyme>.</l>
        <l id="s5:l7" met="4" type="-+">Na liden comet verbliden <rhyme label="b" type="m" corresp="#s5:l2">an</rhyme></l>
        <l id="s5:l8" met="4" type="-+">So wel hem die hier liden <rhyme label="b" type="m" corresp="#s5:l2">can</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sinte Augustinus <rhyme label="a" type="f">seyde</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Die mi een vrage te voren <rhyme label="b" type="m">leyde</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Wie die beste mensche <rhyme label="a" type="f" corresp="#s6:l1">ware</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Ic antwoerde hem <rhyme label="b" type="m" corresp="#s6:l2">voerware</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Die meest lidens conde <rhyme label="c" type="f">verdragen</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Sonder croonen ende <rhyme label="c" type="f" corresp="#s6:l5">claghen</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Ende hem daer in cost <rhyme label="b" type="m" corresp="#s6:l2">reguleren</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Sonder eenich <rhyme label="b" type="m" corresp="#s6:l2">murmureren</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
