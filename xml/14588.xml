    <melody>Schoon lief wil mij troost geven</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt sal ick gaen <rhyme label="a" type="f">beginnen</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Ick ben beswaert van <rhyme label="a" type="f" corresp="#s1:l1">binnen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Waer sal ick gaen om <rhyme label="b" type="m">raedt</rhyme>?</l>
        <l id="s1:l4" met="3" type="-+">Den vyandt leght sijn' <rhyme label="c" type="f">laghen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En queldt my alle <rhyme label="c" type="f" corresp="#s1:l4">daghen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Al met sijn valscheydt <rhyme label="b" type="m" corresp="#s1:l3">quaedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het is my een swaer <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dus stadelijck te <rhyme label="a" type="f" corresp="#s2:l1">strijden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Want selden ben ick <rhyme label="b" type="m">vry</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Stell' icker een <rhyme label="c" type="f">besijden</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Daer komt een ander <rhyme label="c" type="f" corresp="#s2:l4">lijden</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Hoe soud' ick wesen <rhyme label="b" type="m" corresp="#s2:l3">bly</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het valt my wel soo <rhyme label="a" type="f">suere</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Te sterven mijn <rhyme label="a" type="f" corresp="#s3:l1">natuere</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Want sy is kranck en <rhyme label="b" type="m">teer</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Den Geest die spreeckt van <rhyme label="c" type="f">binnen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat ick my sou <rhyme label="c" type="f" corresp="#s3:l4">verwinnen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En dienen Godt den <rhyme label="b" type="m" corresp="#s3:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Nu Heer, ick hebt <rhyme label="a" type="f">ghevonden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ick hoop door uw' vijf <rhyme label="a" type="f" corresp="#s4:l1">wonden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En uw' ghenade <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat ghy my sult <rhyme label="c" type="f">vergheven</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Al mijn boos sondigh <rhyme label="c" type="f" corresp="#s4:l4">leven</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Ghy zijt 't ongrondigh <rhyme label="b" type="m" corresp="#s4:l3">goet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Jesu wilt mijns <rhyme label="a" type="f">ontfermen</rhyme>:</l>
        <l id="s5:l2" met="3" type="-+">Ick vlied' in uwe <rhyme label="a" type="f" corresp="#s5:l1">armen</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Daer toe soo hebb' ick <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Waer ick my keer' of <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Vind' ick my in <rhyme label="c" type="f" corresp="#s5:l4">ellende</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Maer in u vind' ick <rhyme label="b" type="m" corresp="#s5:l3">rust</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
