    <melody>Als ik uit wandelen ga</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DOen Dina moy en <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s1:l2" met="3" type="-+">By vreemde Dochters <rhyme label="b" type="m">gingh</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Aensagh haer Hemors <rhyme label="a" type="m" corresp="#s1:l1">Soon</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Een dertel <rhyme label="b" type="m" corresp="#s1:l2">Jongelingh</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wiens lust gelijck een <rhyme label="c" type="m">vlam</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gloeyd' in onkuyssche <rhyme label="d" type="m">brandt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hy quam, en nam, en <rhyme label="c" type="m" corresp="#s1:l5">nam</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Haer Eer, haer waertste <rhyme label="d" type="m" corresp="#s1:l6">pant</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als oock een Christen <rhyme label="a" type="m">gaet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hem voegen by die <rhyme label="b" type="m">geen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Die vleess'lijck sijn van <rhyme label="a" type="m" corresp="#s2:l1">staet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Soo komt aldaer met <rhyme label="b" type="m" corresp="#s2:l2">een</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Den schalcken Sathan <rhyme label="c" type="m">by</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En loert in dat <rhyme label="d" type="m">geval</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hoe hy, hoe hy, hoe <rhyme label="c" type="m" corresp="#s2:l5">hy</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Haer eer bevlecken <rhyme label="d" type="m" corresp="#s2:l6">sal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En dit 's een Christens <rhyme label="a" type="m">Eer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat sijn geheylight <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In dienst van Godt den <rhyme label="a" type="m" corresp="#s3:l1">Heer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Alleen gehouden <rhyme label="b" type="m" corresp="#s3:l2">wert</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Weest dan bevreest, en <rhyme label="c" type="m">schu</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En hout u selven <rhyme label="d" type="m">vreemt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Van 't geen dat u, dat <rhyme label="c" type="m" corresp="#s3:l5">u</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Vw's Ziels-Maeghdom <rhyme label="d" type="m" corresp="#s3:l6">beneemt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
