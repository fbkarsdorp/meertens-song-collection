    <melody>Phyllis kwam Philander tegen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ryst u op van slaep <rhyme label="a" type="f">vriendinne</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Doet van stonden aen u <rhyme label="b" type="m">cleedt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Compt by ons met blyden <rhyme label="a" type="f" corresp="#s1:l1">zinne</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Maeckt u weerdich en <rhyme label="b" type="m" corresp="#s1:l2">bereedt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Om t'aenveerden eenen <rhyme label="c" type="m">Mey</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Ons ghejont in dees <rhyme label="c" type="m" corresp="#s1:l5">contrey</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Desen Mey die moetmen <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Boven alle Meyen <rhyme label="b" type="m">schoon</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Want hy gaet die al te <rhyme label="a" type="f" corresp="#s2:l1">boven</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Midts dat Godt den Voeders <rhyme label="b" type="m" corresp="#s2:l2">soon</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Onser al verlosser <rhyme label="c" type="m">fris</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Daer aen eens ghestorven <rhyme label="c" type="m" corresp="#s2:l5">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">T'was voorwaer een bitter <rhyme label="a" type="f">lyden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">T'ghen' dat hy aen t'Cruys <rhyme label="b" type="m">verdroech</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Als nu hem naeghels (sonder <rhyme label="a" type="f" corresp="#s3:l1">vermyden</rhyme>)</l>
        <l id="s3:l4" met="4" type="+-">Door handen en voeten <rhyme label="b" type="m" corresp="#s3:l2">sloech</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En syn bust  tot meerder <rhyme label="c" type="m">leet</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Met een Lance open <rhyme label="c" type="m" corresp="#s3:l5">reet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Niet te min met een <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Door syn liefd' hier toe <rhyme label="b" type="m">verweckt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Heeft hy aen t'Cruys willen <rhyme label="a" type="f" corresp="#s4:l1">hanghen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Met syn ermen <rhyme label="b" type="m" corresp="#s4:l2">uyt-ghereckt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Om den mensche te <rhyme label="c" type="m">ontfaen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Die met sonden was <rhyme label="c" type="m" corresp="#s4:l5">ghelaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Haest u dan wilt u <rhyme label="a" type="f">verneren</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Compt siet desen Mey-boom <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Wilt hier op wel <rhyme label="a" type="f" corresp="#s5:l1">contempleren</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Dinckt wat Godt u heeft <rhyme label="b" type="m" corresp="#s5:l2">ghedaen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Als hy stierf aen t'hout des <rhyme label="c" type="m">Cruys</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Voor de sonden en <rhyme label="c" type="m" corresp="#s5:l5">mefuys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Door dees doodt te <rhyme label="a" type="f">overdincken</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Sult ghy dus ghetrocken <rhyme label="b" type="m">syn</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dat ghy heel u hert sult <rhyme label="a" type="f" corresp="#s6:l1">schincken</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Aen dat Goddelijck <rhyme label="b" type="m" corresp="#s6:l2">aenschijn</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Dat u met syn dierbaer <rhyme label="c" type="m">bloet</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Heeft verlost, en <rhyme label="c" type="m" corresp="#s6:l5">mevoeyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Orlof doet u ermen <rhyme label="a" type="f">open</rhyme></l>
        <l id="s7:l2" met="4" type="+-">En daer me den Mey <rhyme label="b" type="m">ontfanght</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Hebt daer in betrouw' en <rhyme label="a" type="f" corresp="#s7:l1">hopen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">T'is Godts soon die daer aen <rhyme label="b" type="m" corresp="#s7:l2">hanght</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">In ghelijckenis <rhyme label="c" type="m">vertoont</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Voor ons door:wondt en <rhyme label="c" type="m" corresp="#s7:l5">ghecroont</rhyme>.</l>
      </lg>
    </lg>
  </text>
