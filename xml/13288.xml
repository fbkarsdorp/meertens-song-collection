    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">ALl' u <rhyme label="a" type="f">wonden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die ghy voor al mijn <rhyme label="a" type="f" corresp="#s1:l1">sonden</rhyme></l>
        <l id="s1:l3" met="2" type="-+">O Jesu <rhyme label="b" type="m">lijdt</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">My doen <rhyme label="c" type="f">hoopen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">En naer u Cruyce <rhyme label="c" type="f" corresp="#s1:l4">loopen</rhyme></l>
        <l id="s1:l6" met="2" type="-+">In mijnen <rhyme label="b" type="m" corresp="#s1:l3">strijdt</rhyme>.</l>
        <l id="s1:l7" met="5" type="+-">Mijnen troost is u <rhyme label="d" type="m">barmhertigheydt</rhyme>.</l>
        <l id="s1:l8" met="2" type="-+">Als ick moet <rhyme label="e" type="f">sterven</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Laet my <rhyme label="e" type="f" corresp="#s1:l8">verwerven</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">En eeuwigh <rhyme label="e" type="f" corresp="#s1:l8">erven</rhyme></l>
        <l id="s1:l11" met="5" type="-+">Door uwe doot bereyt bereyt <rhyme label="d" type="m" corresp="#s1:l7">bereyt</rhyme></l>
        <l id="s1:l12" met="4" type="+-">Jesu, mijne <rhyme label="d" type="m" corresp="#s1:l7">saligheyt</rhyme>.</l>
      </lg>
    </lg>
