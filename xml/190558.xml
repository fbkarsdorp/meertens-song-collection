    <tags/>
    <melody>Auf auf ihr Brüder und seid stark</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Nog, nog, een vriendlijke <rhyme label="a" type="m">afscheidsgroet'</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">De scheidenstijd is <rhyme label="b" type="m">dáár</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Deez' kring, deez' School verlaten <rhyme label="c" type="m">wij</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Vaarwel! ô lieve <rhyme label="c" type="m" corresp="#s1:l3">vriendenrij</rhyme>!</l>
        <l id="s1:l5" met="3" type="-+">Vaarwel! ô <rhyme label="b" type="m" corresp="#s1:l2">Broedrenschaar</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nog, nog, een vriendlijke <rhyme label="a" type="m">afscheidsgroet</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Het scheidensuur is <rhyme label="b" type="m">dáár</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Deez' kring, deez' School verlaten <rhyme label="c" type="m">wij</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Voor grooter kring en <rhyme label="c" type="m" corresp="#s2:l3">maatschappij</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Vaarwel, ô <rhyme label="b" type="m" corresp="#s2:l2">Zustrenschaar</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nog, nog, een vriendlijke <rhyme label="a" type="m">afscheidsgroet</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Ons hart is <rhyme label="b" type="m">aangedaan</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">ô Broedrenschaar; ô <rhyme label="c" type="m">Zustrenrij</rhyme>!</l>
        <l id="s3:l4" met="4" type="-+">Uw' lieven kring verlaten <rhyme label="c" type="m" corresp="#s3:l3">wij</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">De klok zal daadlijk <rhyme label="b" type="m" corresp="#s3:l2">slaan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nog, nog, een vriendlijke <rhyme label="a" type="m">afscheidsgroet</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Vaarwel! smaak met <rhyme label="b" type="m">elkaêr</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Genoegen, zonder twist of <rhyme label="c" type="m">nijd</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Uw aller doel zij deugd en <rhyme label="c" type="m" corresp="#s4:l3">vlijt</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Vaarwel! ô <rhyme label="b" type="m" corresp="#s4:l2">Vriendenschaar</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nog, nog, een vriendlijke <rhyme label="a" type="m">afscheidsgroet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Daar 't scheidensuur straks <rhyme label="b" type="m">slaat</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">ô Onderwijzer, beste <rhyme label="c" type="m">vrind</rhyme>!</l>
        <l id="s5:l4" met="4" type="-+">Die ons zoo hartelijk <rhyme label="c" type="m" corresp="#s5:l3">bemint</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Neem willen voor de <rhyme label="b" type="m" corresp="#s5:l2">daad</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ontvang een dankbare <rhyme label="a" type="m">afscheidgroet</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Dank voor zooveel <rhyme label="b" type="m">genot</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Als ons door u te beurte <rhyme label="c" type="m">viel</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Wij bidden, met een dankbre <rhyme label="c" type="m" corresp="#s6:l3">ziel</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Uw welvaart geve <rhyme label="b" type="m" corresp="#s6:l2">God</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">ô God! verhoor onze afscheids <rhyme label="a" type="m">beê</rhyme>.</l>
        <l id="s7:l2" met="3" type="-+">Het uur van scheiden <rhyme label="b" type="m">slaat</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Stort Gij, ô goede God en <rhyme label="c" type="m">Heer</rhyme>!</l>
        <l id="s7:l4" met="4" type="-+">Uw zegen op elk onzer <rhyme label="c" type="m" corresp="#s7:l3">neêr</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die deze School <rhyme label="b" type="m" corresp="#s7:l2">verlaat</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
