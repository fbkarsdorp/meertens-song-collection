  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAnneer den eersten dagh <rhyme label="a" type="m">begost</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Der ongeheeven <rhyme label="b" type="f">Brooden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op welk men 't Paesch-Lam eeten <rhyme label="a" type="m" corresp="#s1:l1">most</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Tot offerhande <rhyme label="b" type="f" corresp="#s1:l2">dooden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sijn Jongers spraken Iesum <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En seyden, laet ons <rhyme label="b" type="f">weeten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Waer sullen wy het Paesch-Lam <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Bereyden, om te <rhyme label="b" type="f" corresp="#s2:l2">eeten</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy Petrum en Joannem <rhyme label="a" type="m">sondt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En seyde, gaet na <rhyme label="b" type="f">steede</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Waer u ontmoeten sal <rhyme label="a" type="m" corresp="#s3:l1">terstondt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Een man, die daer is <rhyme label="b" type="f" corresp="#s3:l2">reede</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy eene vlesch met water <rhyme label="a" type="m">draeght</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Volght hem, daer hy <rhyme label="b" type="f">in-treede</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Den Vader van den huyse <rhyme label="a" type="m" corresp="#s4:l1">vraeght</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En doet hem deese <rhyme label="b" type="f" corresp="#s4:l2">beede</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den Meester door ons seydt tot <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">'t Wordt tijdt 't Paesch-Lam te <rhyme label="b" type="f">eeten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Waer is voor ons een plaetse <rhyme label="a" type="m" corresp="#s5:l1">nu</rhyme>?</l>
        <l id="s5:l4" met="3" type="-+">Doet ons hier van de <rhyme label="b" type="f" corresp="#s5:l2">weeten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy u een kamer toonen <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die groot is, en <rhyme label="b" type="f">bequame</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Bereydt daer 't Paesch-Lam voor ons <rhyme label="a" type="m" corresp="#s6:l1">al</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Op dat wy eeten <rhyme label="b" type="f" corresp="#s6:l2">t'same</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En sijn Discipels gingen <rhyme label="a" type="m">heen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En quamen in de <rhyme label="b" type="f">Steede</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Alwaer sy sulk man vonden <rhyme label="a" type="m" corresp="#s7:l1">een</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dus sy 't bevel <rhyme label="b" type="f" corresp="#s7:l2">vol-deede</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">En sy bereyden 't <rhyme label="a" type="m">Paesche-Lam</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">Als 't avondt worde <rhyme label="b" type="f">late</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Heer Jesus met sijn twaelve <rhyme label="a" type="m" corresp="#s8:l1">quam</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sy t'samen <rhyme label="b" type="f" corresp="#s8:l2">neder-sate</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Gy selfs 't waeraghtigh Paesch-Lam <rhyme label="a" type="m">sijt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">O Jesu <rhyme label="b" type="f">goedertiere</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Waer door wy worden al <rhyme label="a" type="m" corresp="#s9:l1">bevrijt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Van doodt, en 't helsche <rhyme label="b" type="f" corresp="#s9:l2">viere</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O Jesu, maekt ons met 'er <rhyme label="a" type="m">vlijt</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Dit Avondtmael <rhyme label="b" type="f">deelaghtigh</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Op dat wy dan tot aller <rhyme label="a" type="m" corresp="#s10:l1">tijdt</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Uw lijden sijn <rhyme label="b" type="f" corresp="#s10:l2">gedaghtigh</rhyme>.</l>
      </lg>
    </lg>
