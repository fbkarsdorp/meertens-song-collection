    <melody>Och ik mag wel droevig schreien</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Liefsten Godt hoe menigh <rhyme label="a" type="f">reysen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Heb ick hier met mijn <rhyme label="a" type="f" corresp="#s1:l1">ghepeysen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Seer swaermoedelijck <rhyme label="b" type="m">ghesucht</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Om dat ghy hier waert <rhyme label="b" type="m" corresp="#s1:l3">ghevlucht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En hoe menigh dagh en <rhyme label="c" type="f">nachten</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Heb ick u al, om staen <rhyme label="c" type="f" corresp="#s1:l5">wachten</rhyme></l>
        <l id="s1:l7" met="4" type="+-">En ghevraeght, seer <rhyme label="d" type="m">onvervaert</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Aen u Waeckers waer ghy <rhyme label="d" type="m" corresp="#s1:l7">waert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want ick vraeghde van hun <rhyme label="a" type="f">lieden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Sy en gaeven gheen <rhyme label="a" type="f" corresp="#s2:l1">bedieden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Aen my waer ghy waert <rhyme label="b" type="m">ghegaen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Maer sy lieten my soo <rhyme label="b" type="m" corresp="#s2:l3">staen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">K’creegh hier in ghelijck <rhyme label="c" type="f">vernoeyen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">T’scheen d’ack ghinck ghelaen met <rhyme label="c" type="f" corresp="#s2:l5">Boeyen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">K’voeghde my aen eenen <rhyme label="d" type="m">kant</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Daer ick my alleene <rhyme label="d" type="m" corresp="#s2:l7">vant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">K’docht ick sal alleen gaen <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En gheen Schepsels meer aen <rhyme label="a" type="f" corresp="#s3:l1">cleven</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Oft ick u by <rhyme label="b" type="m">avontuer</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Beter vonde t’eender <rhyme label="b" type="m" corresp="#s3:l3">uer</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">K’docht of ghy u hadt <rhyme label="c" type="f">ghedoken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Om dat ick had toe <rhyme label="c" type="f" corresp="#s3:l5">ghesproken</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En Bemindt de Schepsels <rhyme label="d" type="m">meer</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Dan dat toe laet uwe <rhyme label="d" type="m" corresp="#s3:l7">Eer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">D’eeuwigheydt nu in <rhyme label="a" type="f">ghetreden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als ick stont in mijn <rhyme label="a" type="f" corresp="#s4:l1">ghebeden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Met mijn hert tot heel <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Quaemt ghy my in mijnen <rhyme label="b" type="m" corresp="#s4:l3">Schoot</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Soo dat ick nu met <rhyme label="c" type="f">verlanghen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">In mijn Arms u moet <rhyme label="c" type="f" corresp="#s4:l5">pranghen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Aenghesien dat ghy soo <rhyme label="d" type="m">vry</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">V presentie t’hoont aen <rhyme label="d" type="m" corresp="#s4:l7">my</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wie sal my van u nu <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Wie sal my naer t’neder <rhyme label="a" type="f" corresp="#s5:l1">leyden</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Als het hert van u en <rhyme label="b" type="m">mijn</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dusdaenight vereenight <rhyme label="b" type="m" corresp="#s5:l3">zijn</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Gheenen Vyant soo <rhyme label="c" type="f">gheslaeghen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Die my hier van u sal <rhyme label="c" type="f" corresp="#s5:l5">jaeghen</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">K’ben al nu ghenoegh <rhyme label="d" type="m">versterckt</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Nu u Liefd in my soo <rhyme label="d" type="m" corresp="#s5:l7">werckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Lof o Alderliefst <rhyme label="a" type="f">Beminden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Nu ghy hebt u laeten <rhyme label="a" type="f" corresp="#s6:l1">vinden</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Nu ons Liefde ons tsamen <rhyme label="b" type="m">vlecht</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Magh ick nu wel segghen <rhyme label="b" type="m" corresp="#s6:l3">recht</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Dat ick ben ter deser <rhyme label="c" type="f">stonden</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Van t’verganckelijck <rhyme label="c" type="f" corresp="#s6:l5">ontbonden</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">En gheheel by u <rhyme label="d" type="m">ghevoeght</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Met ghenoeght boven <rhyme label="d" type="m" corresp="#s6:l7">ghenoeght</rhyme>.</l>
      </lg>
    </lg>
  </text>
