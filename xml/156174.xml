    <tags/>
    <melody>Wat mag Goossen toch gebreken</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">FOey! den sueren stueren <rhyme label="a" type="f">Nabal</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">By wien dat geen vriendtschap <rhyme label="b" type="m">geldt</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Davids Heyr met Spiets, en <rhyme label="a" type="f" corresp="#s1:l1">Sabel</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Heeft sijn kudde op het <rhyme label="b" type="m" corresp="#s1:l2">velt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Trouw beschermt voor 't wreet <rhyme label="b" type="m" corresp="#s1:l2">ghewelt</rhyme>:</l>
        <l id="s1:l6" met="3" type="+-">En gegespt in't <rhyme label="c" type="f">Wapen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Heeft ghewacht // al de <rhyme label="d" type="m">Nacht</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Rondom Nabals <rhyme label="c" type="f" corresp="#s1:l6">Schapen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maer als David moste <rhyme label="a" type="f">vluchten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Hongerigh door 't barre <rhyme label="b" type="m">Woudt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Badt hy Nabal om wat <rhyme label="a" type="f" corresp="#s2:l1">vruchten</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Voor sijn volck, tot <rhyme label="b" type="m" corresp="#s2:l2">onderhoudt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">t'Wijl de noot haer had <rhyme label="b" type="m" corresp="#s2:l2">benouwt</rhyme>:</l>
        <l id="s2:l6" met="3" type="+-">En in Nabals <rhyme label="c" type="f">Woningh</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Wordt ghegast  // en <rhyme label="d" type="m">gebrast</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Als by eenen <rhyme label="c" type="f" corresp="#s2:l6">Koningh</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sy door noot gheparst wel <rhyme label="a" type="f">droeve</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Baden om wat <rhyme label="b" type="m">onderstant</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Maer hy seyde: Schuym van <rhyme label="a" type="f" corresp="#s3:l1">Boeven</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Plagen van een vredigh <rhyme label="b" type="m" corresp="#s3:l2">Landt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Ghy krijght niet van mijnder <rhyme label="b" type="m" corresp="#s3:l2">hant</rhyme>:</l>
        <l id="s3:l6" met="3" type="+-">'k Doe mijn Dis niet <rhyme label="c" type="f">rechten</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Voor 't gheboeft // maer <rhyme label="d" type="m">behoeft</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Van mijn trouwe <rhyme label="c" type="f" corresp="#s3:l6">knechten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Sulcken Nabal is oock <rhyme label="a" type="f">mede</rhyme></l>
        <l id="s4:l2" met="4" type="+-">'s Wereldts opgesmuckte <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die de Mensch in tijdt van <rhyme label="a" type="f" corresp="#s4:l1">vrede</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Met veel moeyten, en <rhyme label="b" type="m" corresp="#s4:l2">onrust</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Dient, en naloopt, vleyt, en <rhyme label="b" type="m" corresp="#s4:l2">kust</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Met het hert en <rhyme label="c" type="f">sinnen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Of daer loon // fray en <rhyme label="d" type="m">schoon</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Mede was te <rhyme label="c" type="f" corresp="#s4:l6">winnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Maer een die in bitt're <rhyme label="a" type="f">nooden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Hygende na <rhyme label="b" type="m">toeverlaet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Tot de Wereldt komt <rhyme label="a" type="f" corresp="#s5:l1">ghevloden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Als 't haer al na wenschen <rhyme label="b" type="m" corresp="#s5:l2">gaet</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">En haer aensoeckt om <rhyme label="b" type="m" corresp="#s5:l2">ghenaed</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Werdt niet eens <rhyme label="c" type="f">ghegeven</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Troost noch heyl: Maer 't is <rhyme label="d" type="m">veyl</rhyme></l>
        <l id="s5:l8" met="3" type="+-">By een Christ'lijck <rhyme label="c" type="f" corresp="#s5:l6">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
