  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">AL mijn hert en oock mijn <rhyme label="a" type="m">sin</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Streckt om eene te <rhyme label="b" type="f">behaghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dien ick nacht en dach <rhyme label="a" type="m" corresp="#s1:l1">bemin</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Maer ick hebt verlooft te <rhyme label="b" type="f" corresp="#s1:l2">vraghen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Of het haer believen <rhyme label="c" type="m">souw</rhyme></l>
        <l id="s1:l6" met="4" type="+-">My t'ontbinden van mijn <rhyme label="c" type="m" corresp="#s1:l5">rouw</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dus soo dunckt my dat ick <rhyme label="a" type="m">wil</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Haer noch alle nacht gaen <rhyme label="b" type="f">vrijen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Tot sy seyt weest nu eens <rhyme label="a" type="m" corresp="#s2:l1">stil</rhyme></l>
        <l id="s2:l4" met="4" type="+-">En ontfanght al het <rhyme label="b" type="f" corresp="#s2:l2">verblijen</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Dat ick u toe wenschen <rhyme label="c" type="m">kan</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Als een helt soo tiert u <rhyme label="c" type="m" corresp="#s2:l5">dan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Soo ick dan op dees <rhyme label="a" type="m">manier</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Mijn soet-lief niet kan <rhyme label="b" type="f">vermaken</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Soo wil ick beloven <rhyme label="a" type="m" corresp="#s3:l1">schier</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Al mijn vrijen te gaen <rhyme label="b" type="f" corresp="#s3:l2">staken</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En noch wachten seven <rhyme label="c" type="m">jaer</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Misschien sy verandert <rhyme label="c" type="m" corresp="#s3:l5">haer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Om dees jaren soo ick <rhyme label="a" type="m">gis</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Al de menschen meest <rhyme label="b" type="f">verandren</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Soo mijn hope dan is <rhyme label="a" type="m" corresp="#s4:l1">mis</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Laet ick haer alleen gaen <rhyme label="b" type="f" corresp="#s4:l2">wandren</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En verwachten met <rhyme label="c" type="m">ghedult</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Tot mijn prophetij <rhyme label="c" type="m" corresp="#s4:l5">vervult</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Die ick eens gheschreven <rhyme label="a" type="m">vondt</rhyme></l>
        <l id="s5:l2" met="4" type="+-">In de tweed' oft derde <rhyme label="b" type="f">ploye</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Van een Pals-rock, daer in <rhyme label="a" type="m" corresp="#s5:l1">stondt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dan noch seven Meysjens <rhyme label="b" type="f" corresp="#s5:l2">moye</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Souden met haer sleutels <rhyme label="c" type="m">kloeck</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Strijden om een Iongmans <rhyme label="c" type="m" corresp="#s5:l5">broeck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
