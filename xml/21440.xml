    <tags>
      <tag>scriptural song</tag>
      <tag>admonishing song</tag>
    </tags>
    <melody>Hier zijn drie licht geladen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOort toe ghy Christenen <rhyme label="a" type="f">scharen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hoort, siet, en <rhyme label="b" type="m">verstaet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Hoe dat ons sonder <rhyme label="a" type="f" corresp="#s1:l1">sparen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ons viant <rhyme label="b" type="m" corresp="#s1:l2">ommegaet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Als een Leeu <rhyme label="c" type="f">onuersadich</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Al om een wilt <rhyme label="d" type="m">foreest</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Loopt seer <rhyme label="c" type="f" corresp="#s1:l5">onghenadich</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Al met een groot <rhyme label="d" type="m" corresp="#s1:l6">tempeest</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Smaect desen <rhyme label="d" type="m" corresp="#s1:l6">keest</rhyme></l>
        <l id="s1:l10" met="2" type="-+">Hem niet en <rhyme label="d" type="m" corresp="#s1:l6">vreest</rhyme></l>
        <l id="s1:l11" met="2" type="+-">Maer alder <rhyme label="d" type="m" corresp="#s1:l6">meest</rhyme></l>
        <l id="s1:l12" met="2" type="-+">Door Gods <rhyme label="d" type="m" corresp="#s1:l6">gheest</rhyme></l>
        <l id="s1:l13" met="3" type="-+">Doet dat de liefde <rhyme label="d" type="m" corresp="#s1:l6">heest</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Gods liefde sietmen <rhyme label="a" type="f">blijcken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Want daer sy coemt <rhyme label="b" type="m">voorwaer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Daer moet die vreese <rhyme label="a" type="f" corresp="#s2:l1">wijcken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat tuycht Ioannes <rhyme label="b" type="m" corresp="#s2:l2">claer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Wilt v in haer <rhyme label="c" type="f">gheneren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Maect haer altijt <rhyme label="d" type="m">bekent</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Laetse in v <rhyme label="c" type="f" corresp="#s2:l5">domineren</rhyme></l>
        <l id="s2:l8" met="3" type="-+">En zijt toch niet <rhyme label="d" type="m" corresp="#s2:l6">verblent</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Al is <rhyme label="d" type="m" corresp="#s2:l6">absent</rhyme></l>
        <l id="s2:l10" met="2" type="-+">En niet <rhyme label="d" type="m" corresp="#s2:l6">present</rhyme></l>
        <l id="s2:l11" met="2" type="+-">Troost sonder <rhyme label="d" type="m" corresp="#s2:l6">ent</rhyme></l>
        <l id="s2:l12" met="2" type="-+">Tfenijnich <rhyme label="d" type="m" corresp="#s2:l6">serpent</rhyme></l>
        <l id="s2:l13" met="3" type="-+">Is door Gods doot <rhyme label="d" type="m" corresp="#s2:l6">gheschent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En vreest gheen ander <rhyme label="a" type="f">saken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die v moghen <rhyme label="b" type="m">aenstaen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dan der sonden <rhyme label="a" type="f" corresp="#s3:l1">ghenaken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Tot haer en wilt niet <rhyme label="b" type="m" corresp="#s3:l2">gaen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Uliet van haer tallen <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Als van der slanghen <rhyme label="d" type="m">fenijn</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Oft anders wert <rhyme label="c" type="f" corresp="#s3:l5">verslonden</rhyme></l>
        <l id="s3:l8" met="3" type="-+">U siel door haren <rhyme label="d" type="m" corresp="#s3:l6">schijn</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Bitter als <rhyme label="d" type="m" corresp="#s3:l6">brijn</rhyme></l>
        <l id="s3:l10" met="2" type="-+">Is haer <rhyme label="d" type="m" corresp="#s3:l6">ghepijn</rhyme></l>
        <l id="s3:l11" met="2" type="+-">Treckt ghy die <rhyme label="d" type="m" corresp="#s3:l6">lijn</rhyme></l>
        <l id="s3:l12" met="2" type="-+">So suldy dan <rhyme label="d" type="m" corresp="#s3:l6">fijn</rhyme></l>
        <l id="s3:l13" met="3" type="-+">Met haer bedroghen <rhyme label="d" type="m" corresp="#s3:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt v vp Christum <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die ons vercoren <rhyme label="b" type="m">heeft</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Doen wy noch waren <rhyme label="a" type="f" corresp="#s4:l1">verwaten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Quam hy die eeuwich <rhyme label="b" type="m" corresp="#s4:l2">leeft</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Om onse boosheyt <rhyme label="c" type="f">steruen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">En bracht ons door zijn <rhyme label="d" type="m">doot</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Totter eewigher <rhyme label="c" type="f" corresp="#s4:l5">eruen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Die Adam vaste <rhyme label="d" type="m" corresp="#s4:l6">sloot</rhyme></l>
        <l id="s4:l9" met="2" type="-+">Maer door <rhyme label="d" type="m" corresp="#s4:l6">dexploot</rhyme></l>
        <l id="s4:l10" met="2" type="-+">Uan Christus <rhyme label="d" type="m" corresp="#s4:l6">bloot</rhyme></l>
        <l id="s4:l11" met="2" type="+-">Sijn wy <rhyme label="d" type="m" corresp="#s4:l6">ghenoot</rhyme></l>
        <l id="s4:l12" met="2" type="-+">Door zijn macht <rhyme label="d" type="m" corresp="#s4:l6">groot</rhyme></l>
        <l id="s4:l13" met="3" type="-+">Tghequel des duyuels <rhyme label="d" type="m" corresp="#s4:l6">vloot</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Prince wilt v <rhyme label="a" type="f">betrouwen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Op dat ons Petrus <rhyme label="b" type="m">seyt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dat wy vry van <rhyme label="a" type="f" corresp="#s5:l1">rouwen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Door Christus werden <rhyme label="b" type="m" corresp="#s5:l2">gheleyt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">In trijck daer wert <rhyme label="c" type="f">gheleken</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Duysent iaer als een <rhyme label="d" type="m">dach</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Die gisteren is <rhyme label="c" type="f" corresp="#s5:l5">besweken</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Dus en maect gheen <rhyme label="d" type="m" corresp="#s5:l6">ghewach</rhyme></l>
        <l id="s5:l9" met="2" type="-+">Uan tcrusen <rhyme label="d" type="m" corresp="#s5:l6">verdrach</rhyme></l>
        <l id="s5:l10" met="2" type="-+">Ureest zwert oft <rhyme label="d" type="m" corresp="#s5:l6">slach</rhyme></l>
        <l id="s5:l11" met="2" type="+-">Spot noch <rhyme label="d" type="m" corresp="#s5:l6">ghelach</rhyme></l>
        <l id="s5:l12" met="2" type="-+">Want van <rhyme label="d" type="m" corresp="#s5:l6">tgheclach</rhyme></l>
        <l id="s5:l13" met="3" type="-+">Hy v helpen <rhyme label="d" type="m" corresp="#s5:l6">mach</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
