  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VAarwel ô Roemberuchte <rhyme label="a" type="m">stadt</rhyme>,</l>
        <l id="s1:l2" met="6" type="-+">Die my eer schafte vreuchde, nu droevig tranen <rhyme label="a" type="m" corresp="#s1:l1">nat</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Myn Rosemond is <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Begraven in uw <rhyme label="b" type="m" corresp="#s1:l3">schoot</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wat ramp is ooit zoo <rhyme label="b" type="m" corresp="#s1:l3">groot</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Indien 'k my lyden klagen <rhyme label="a" type="m">kon</rhyme>,</l>
        <l id="s2:l2" met="6" type="-+">Wat hert zou door myn zuchten niet smelten tot een <rhyme label="a" type="m" corresp="#s2:l1">bron</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Door duyzent rampen <rhyme label="b" type="m">heên</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Had ik die Maagt <rhyme label="b" type="m" corresp="#s2:l3">verbeên</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Nu laat ze my <rhyme label="b" type="m" corresp="#s2:l3">alleen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'k Ga over Berg, door bosch en <rhyme label="a" type="m">dal</rhyme>,</l>
        <l id="s3:l2" met="6" type="-+">Myn Lief haar doot beschreyen tot ik haar volgen <rhyme label="a" type="m" corresp="#s3:l1">zal</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Wat klaag ik myn <rhyme label="b" type="m">verdriet</rhyme>?</l>
        <l id="s3:l4" met="3" type="-+">De Nimfjes van de <rhyme label="b" type="m" corresp="#s3:l3">vliet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Behagen 't zuchten <rhyme label="b" type="m" corresp="#s3:l3">niet</rhyme>.</l>
      </lg>
    </lg>
  </text>
