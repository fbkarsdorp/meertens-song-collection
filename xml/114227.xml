  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SIet den Heer is wegh <rhyme label="a" type="f">ghetoghen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Nae den Hemel <rhyme label="a" type="f" corresp="#s1:l1">opghevloghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Sit nu in ons <rhyme label="b" type="m">Vader-landt</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Aen sijns Vaders rechte <rhyme label="b" type="m" corresp="#s1:l3">handt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Waer hy weder uyt sal <rhyme label="c" type="f">comen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Om tot hem ons <rhyme label="c" type="f" corresp="#s1:l5">opghenomen</rhyme></l>
        <l id="s1:l7" met="4" type="+-">In te leyden in sijn <rhyme label="d" type="m">rijck</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Nu gheluckich hem <rhyme label="d" type="m" corresp="#s1:l7">ghelijck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dit gheluck sal u <rhyme label="a" type="f">gheworden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Is 't dat ghy tot hem u <rhyme label="a" type="f" corresp="#s2:l1">porden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Opwaerts heffen blijft 't <rhyme label="b" type="m">ghesicht</rhyme></l>
        <l id="s2:l4" met="4" type="+-">In een salich hemels <rhyme label="b" type="m" corresp="#s2:l3">licht</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Is 't dat gh' in het hof des <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Innich gaet met hem <rhyme label="c" type="f" corresp="#s2:l5">verkeeren</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Worden daer met hem <rhyme label="d" type="m">ghemeyn</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">In een hert van sonden <rhyme label="d" type="m" corresp="#s2:l7">reyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Tracht die lochtheydt te <rhyme label="a" type="f">ghewinnen</rhyme>/</l>
        <l id="s3:l2" met="4" type="+-">Die u ziel breng dickwels <rhyme label="a" type="f" corresp="#s3:l1">binnen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">In dat huys van alle <rhyme label="b" type="m">vreught</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Daer Godts aenschijn 'tal <rhyme label="b" type="m" corresp="#s3:l3">verheught</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Doet 'tgheloof seer in u <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Hout u hert altijdt <rhyme label="c" type="f" corresp="#s3:l5">verheven</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">In 'nen soeten <rhyme label="d" type="m">minne-brant</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Aen den Heer altijdt <rhyme label="d" type="m" corresp="#s3:l7">verpant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laet dat neder-waerts noot <rhyme label="a" type="f">dalen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daer niet anders is te <rhyme label="a" type="f" corresp="#s4:l1">halen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Als bedrogh en valschen <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Hier en naermaels alle <rhyme label="b" type="m" corresp="#s4:l3">pijn</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">'Thert te eel u is <rhyme label="c" type="f">gheschapen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Om beneden vreught te <rhyme label="c" type="f" corresp="#s4:l5">rapen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Om te vruten in het <rhyme label="d" type="m">slijck</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Door de gratie Godt <rhyme label="d" type="m" corresp="#s4:l7">ghelijck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wilt ghy dan zijn wel <rhyme label="a" type="f">beraden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Gaet met allen hert <rhyme label="a" type="f" corresp="#s5:l1">versmaden</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Bant uyt u <rhyme label="b" type="m">ghedachtenis</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Al wat dat Godt niet en <rhyme label="b" type="m" corresp="#s5:l3">is</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Laet in u hem <rhyme label="c" type="f">heerschappijen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Die alleen u kan <rhyme label="c" type="f" corresp="#s5:l5">verblijen</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Die alleen is 't ware <rhyme label="d" type="m">goedt</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Dat vervult ons groot <rhyme label="d" type="m" corresp="#s5:l7">ghemoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Iesv, slaet op ons u <rhyme label="a" type="f">ooghen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Wilt ons hert tot u <rhyme label="a" type="f" corresp="#s6:l1">verhooghen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Comt ons door u hemels <rhyme label="b" type="m">licht</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Jonstich altijdt in 't <rhyme label="b" type="m" corresp="#s6:l3">ghesicht</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Om tot u ons op te <rhyme label="c" type="f">wecken</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Nae den hemel op te <rhyme label="c" type="f" corresp="#s6:l5">trecken</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Dat wy in dit tranen <rhyme label="d" type="m">dal</rhyme></l>
        <l id="s6:l8" met="4" type="+-">U ghenieten, onsen <rhyme label="d" type="m" corresp="#s6:l7">Al</rhyme>.</l>
      </lg>
    </lg>
  </text>
