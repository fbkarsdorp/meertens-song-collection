    <melody>A ce matin je me réveille</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MEtter daet ick heb <rhyme label="a" type="f">bevonden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Dat 's Werelts cieraet, en <rhyme label="b" type="m">vreught</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Aenbrenght droefheyt, en veel <rhyme label="a" type="f" corresp="#s1:l1">sonden</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Ia de meeste <rhyme label="b" type="m" corresp="#s1:l2">ongeneught</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Al dat hier soet schijnt te <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s1:l6" met="4" type="+-">'t Is maer gal ende <rhyme label="c" type="m" corresp="#s1:l5">fenijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Al de glory van de <rhyme label="a" type="f">menschen</rhyme> //</l>
        <l id="s2:l2" met="4" type="+-">Schoonheyt, eer, rijckdom en <rhyme label="b" type="m">pracht</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Al datmen op d'aerde <rhyme label="a" type="f" corresp="#s2:l1">wenschen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Kan verdwijnen in een <rhyme label="b" type="m" corresp="#s2:l2">nacht</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">'t Is maer schaduw', roock, en <rhyme label="c" type="m">wint</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat men inde Werelt <rhyme label="c" type="m" corresp="#s2:l5">vindt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die nu nemen haer <rhyme label="a" type="f">genuchten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In 's Werelts kortste <rhyme label="b" type="m">playsier</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sullen daer na eeuwigh <rhyme label="a" type="f" corresp="#s3:l1">suchten</rhyme></l>
        <l id="s3:l4" met="4" type="+-">En branden in 't helsche <rhyme label="b" type="m" corresp="#s3:l2">vyer</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Geen troost sullen in de <rhyme label="c" type="m">vlam</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Krijgen oyt van Godes <rhyme label="c" type="m" corresp="#s3:l5">Lam</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Tot Godes lof 'k wil <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s4:l2" met="4" type="+-">'s Werelts pracht, en <rhyme label="b" type="m">hoovaerdy</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'s Werelts eer, en hooge <rhyme label="a" type="f" corresp="#s4:l1">staten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">'s Werelts vals vermaeck daer <rhyme label="b" type="m" corresp="#s4:l2">by</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Adieu Werelt, ick nu <rhyme label="c" type="m">sal</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Dienen mijn Godt, en mijn <rhyme label="c" type="m" corresp="#s4:l5">Al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Met mijn kracht, en al mijn <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Wil ick uw' mijn Godt <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Voor mijn Bruydegom <rhyme label="a" type="f" corresp="#s5:l1">beminnen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">U bemin ick anders <rhyme label="b" type="m" corresp="#s5:l2">geen</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Ick schenck uw', Jesu mijn <rhyme label="c" type="m">hart</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Dat de Werelt heeft <rhyme label="c" type="m" corresp="#s5:l5">verwart</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ick schenck u noch, daer en <rhyme label="a" type="f">boven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Al dat heeft mijn ziel en <rhyme label="b" type="m">lijf</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Om hier mede u te <rhyme label="a" type="f" corresp="#s6:l1">loven</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">Geef mijn heel tot u <rhyme label="b" type="m" corresp="#s6:l2">gerijf</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Want ghy zijt mijn <rhyme label="c" type="m">Bruydegom</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Na de Werelt 'k sie niet <rhyme label="c" type="m" corresp="#s6:l5">om</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Als een heldt, ick hoop te <rhyme label="a" type="f">vechten</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Tegen 't vleesch vol quaede <rhyme label="b" type="m">lust</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">En te volgen 't <rhyme label="a" type="f" corresp="#s7:l1">onder-rechten</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Van mijn Oversten met <rhyme label="b" type="m" corresp="#s7:l2">lust</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Met vermaeck en goede <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s7:l6" met="4" type="+-">'k Segh adieu mijn Werelts <rhyme label="c" type="m" corresp="#s7:l5">bloet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Wilt ô Jesu my <rhyme label="a" type="f">behoeden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Als een Moeder hare <rhyme label="b" type="m">Kindt</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">Met uw' gracy wilt my <rhyme label="a" type="f" corresp="#s8:l1">voeden</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Dat niet my van u <rhyme label="b" type="m" corresp="#s8:l2">verblindt</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Geeft dat 't vleesch of 's Werelt <rhyme label="c" type="m">aes</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Noch Sathan my niet maeckt <rhyme label="c" type="m" corresp="#s8:l5">dwaes</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Och Jesu! wilt by mijn <rhyme label="a" type="f">blyven</rhyme></l>
        <l id="s9:l2" met="4" type="+-">In mijnen aenstaende <rhyme label="b" type="m">strijdt</rhyme>:</l>
        <l id="s9:l3" met="4" type="+-">In mijn strijdt wilt mijn <rhyme label="a" type="f" corresp="#s9:l1">verstijven</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Dat ick winnen macht <rhyme label="b" type="m" corresp="#s9:l2">altijdt</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">'k Sie uw' handen <rhyme label="c" type="m">uytgespreyt</rhyme></l>
        <l id="s9:l6" met="4" type="+-">En uw' goetheyt groot <rhyme label="c" type="m" corresp="#s9:l5">bereyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Geeft dat ick uw trouw mach <rhyme label="a" type="f">dienen</rhyme>:</l>
        <l id="s10:l2" met="4" type="+-">Geeft de simpelheyt van 't <rhyme label="b" type="m">Lam</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">d' Yver van de <rhyme label="a" type="f" corresp="#s10:l1">Seraphienen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Gehoorsamheyt van <rhyme label="b" type="m" corresp="#s10:l2">Abram</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Geeft my daer na Godes <rhyme label="c" type="m">Soon</rhyme>;</l>
        <l id="s10:l6" met="4" type="+-">Uw' aenschijn in 's Hemels <rhyme label="c" type="m" corresp="#s10:l5">throon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
