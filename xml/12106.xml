  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">VVEest al <rhyme label="a" type="m">verheucht</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Schept moet en <rhyme label="a" type="m" corresp="#s1:l1">vreucht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wilt inden Heer’ <rhyme label="b" type="f">verblijden</rhyme>:</l>
        <l id="s1:l4" met="2" type="-+">Soo ghy best <rhyme label="a" type="m" corresp="#s1:l1">meucht</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Wt goeder <rhyme label="a" type="m" corresp="#s1:l1">deucht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Looft hem tot allen <rhyme label="b" type="f" corresp="#s1:l3">tijden</rhyme>.</l>
        <l id="s1:l7" met="2" type="-+">Soo ghy best <rhyme label="a" type="m" corresp="#s1:l1">meucht</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Wt goeder <rhyme label="a" type="m" corresp="#s1:l1">deucht</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Looft hem tot allen <rhyme label="b" type="f" corresp="#s1:l3">tijden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Al ist v <rhyme label="a" type="m">pijn</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Op dit <rhyme label="a" type="m" corresp="#s2:l1">termijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">V cruysken hier te <rhyme label="b" type="f">draghen</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Vertroost v <rhyme label="a" type="m" corresp="#s2:l1">fijn</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">‘Tsal beter <rhyme label="a" type="m" corresp="#s2:l1">zijn</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Naer luttel korte <rhyme label="b" type="f" corresp="#s2:l3">daghen</rhyme>.</l>
        <l id="s2:l7" met="2" type="-+">Vertroost v <rhyme label="a" type="m" corresp="#s2:l1">fijn</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">‘Tsal beter <rhyme label="a" type="m" corresp="#s2:l1">zijn</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Naer luttel korte <rhyme label="b" type="f" corresp="#s2:l3">daghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Gaet tot den <rhyme label="a" type="m">vloet</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Van Christus <rhyme label="a" type="m" corresp="#s3:l1">bloet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo mildelijck <rhyme label="b" type="f">vergoten</rhyme>:</l>
        <l id="s3:l4" met="2" type="-+">Komt met <rhyme label="a" type="m" corresp="#s3:l1">ootmoet</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Godt biedt v <rhyme label="a" type="m" corresp="#s3:l1">soet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Sijn armen wijt <rhyme label="b" type="f" corresp="#s3:l3">ontsloten</rhyme>.</l>
        <l id="s3:l7" met="2" type="-+">Komt met <rhyme label="a" type="m" corresp="#s3:l1">ootmoet</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Godt biedt v <rhyme label="a" type="m" corresp="#s3:l1">soet</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Sijn armen wijt <rhyme label="b" type="f" corresp="#s3:l3">ontsloten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Teghen <rhyme label="a" type="m">‘tghequel</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Des vijants <rhyme label="a" type="m" corresp="#s4:l1">fel</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Weest vroom, en wilt niet <rhyme label="b" type="f">duchten</rhyme>:</l>
        <l id="s4:l4" met="2" type="-+">Doet altijdts <rhyme label="a" type="m" corresp="#s4:l1">wel</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Nae Godts <rhyme label="a" type="m" corresp="#s4:l1">beuel</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Waeckt ende bidt met <rhyme label="b" type="f" corresp="#s4:l3">suchten</rhyme>.</l>
        <l id="s4:l7" met="2" type="-+">Doet altijdts <rhyme label="a" type="m" corresp="#s4:l1">wel</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Nae Godts <rhyme label="a" type="m" corresp="#s4:l1">beuel</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Waeckt ende bidt met <rhyme label="b" type="f" corresp="#s4:l3">suchten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">De werelt <rhyme label="a" type="m">draeyt</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Soo den wint <rhyme label="a" type="m" corresp="#s5:l1">waeyt</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Maer die sonder <rhyme label="b" type="f">verflauwen</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Met tranen <rhyme label="a" type="m" corresp="#s5:l1">saeyt</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">In blijschap <rhyme label="a" type="m" corresp="#s5:l1">maeyt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Deur Godts eeuwich <rhyme label="b" type="f" corresp="#s5:l3">aenschouwen</rhyme>.</l>
        <l id="s5:l7" met="2" type="-+">Met tranen <rhyme label="a" type="m" corresp="#s5:l1">saeyt</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">In blijschap <rhyme label="a" type="m" corresp="#s5:l1">maeyt</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Deur Godts eeuwich <rhyme label="b" type="f" corresp="#s5:l3">aenschouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>
