    <tags>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
    </tags>
    <melody>Uw liefde kwelt mij tot de dood</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VA-le-ri-aen! tot wat een <rhyme label="a" type="m">dood</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hebt ghy Laurens <rhyme label="b" type="f">verwe-sen</rhyme>?</l>
        <l id="s1:l3" met="2" type="-+">Men vindt te <rhyme label="b" type="f" corresp="#s1:l2">lesen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">By niemand sulck een <rhyme label="a" type="m" corresp="#s1:l1">stoot</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Als met lijdtsaemheyd <rhyme label="c" type="f">verdragen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Heeft Laurens in sijne <rhyme label="c" type="f" corresp="#s1:l5">da-gen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">G' hebt met het sweert om-hals <rhyme label="a" type="m">gebrocht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Des Heyl'ge Kercks <rhyme label="b" type="f">Bewaerder</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Sixtum; maer <rhyme label="b" type="f" corresp="#s2:l2">swaerder</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Torment hebt ghy <rhyme label="a" type="m" corresp="#s2:l1">gesocht</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Om dees trouwen Goods <rhyme label="c" type="f">Diaken</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Door het vuyr aen kant te <rhyme label="c" type="f" corresp="#s2:l5">maecken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Begeerigh waert ghy seer na <rhyme label="a" type="m">geld</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En kostelijcke <rhyme label="b" type="f">schatten</rhyme>;</l>
        <l id="s3:l3" met="2" type="-+">Des deed' ghy <rhyme label="b" type="f" corresp="#s3:l2">vatten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Sint Laurens met <rhyme label="a" type="m" corresp="#s3:l1">geweld</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">By wien dese schatten <rhyme label="c" type="f">waren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Tot behouf der arme <rhyme label="c" type="f" corresp="#s3:l5">Schaeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als ghy dees schatten wilden <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En hebben wout in <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Soo zijn de <rhyme label="b" type="f" corresp="#s4:l2">banden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">(G'lijck als wy sien <rhyme label="a" type="m" corresp="#s4:l1">geschie'n</rhyme>)</l>
        <l id="s4:l5" met="4" type="+-">Van Laurentius <rhyme label="c" type="f">ontbonden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En Hy wierdt om die <rhyme label="c" type="f" corresp="#s4:l5">gesonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghy Hem vergunden dagen <rhyme label="a" type="m">twee</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Of drie, om die te <rhyme label="b" type="f">soecken</rhyme></l>
        <l id="s5:l3" met="2" type="-+">In alle <rhyme label="b" type="f" corresp="#s5:l2">hoecken</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Laurens quam weder <rhyme label="a" type="m" corresp="#s5:l1">dree</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">En brocht me'e wel duysend <rhyme label="c" type="f">armen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Die rontom Hem quamen <rhyme label="c" type="f" corresp="#s5:l5">swarmen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy seyde; Keyser! dit 's de <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Van Jesu Christi <rhyme label="b" type="f">Kercke</rhyme>.</l>
        <l id="s6:l3" met="2" type="-+">Nu kondt ghy <rhyme label="b" type="f" corresp="#s6:l2">mercken</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Wat schat dat Christus <rhyme label="a" type="m" corresp="#s6:l1">hadt</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Dese schat is aen die <rhyme label="c" type="f">menschen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Uytgedeelt na onse <rhyme label="c" type="f" corresp="#s6:l5">wenschen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dees armen zijn daer me'e <rhyme label="a" type="m">gekleedt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hier me'e zijn s' <rhyme label="b" type="f">onderhouwen</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Sonder <rhyme label="b" type="f" corresp="#s7:l2">berouwen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van ons, maer u is 't <rhyme label="a" type="m" corresp="#s7:l1">leedt</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">'t Sou u zijn een groote <rhyme label="c" type="f">schande</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Dat ghy die hen soudt <rhyme label="c" type="f" corresp="#s7:l5">onthanden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als dit den Keyser hadt <rhyme label="a" type="m">gehoort</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Soo heeft hy doen <rhyme label="b" type="f">ontkleeden</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Sint Laurens <rhyme label="b" type="f" corresp="#s8:l2">leden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En slaen met touw en <rhyme label="a" type="m" corresp="#s8:l1">koord</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">Maer Lavrens sich seer <rhyme label="c" type="f">verheughden</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">En Hy danckten God met <rhyme label="c" type="f" corresp="#s8:l5">vreughden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Verbittert is hier door <rhyme label="a" type="m">geweest</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Den Keyser, en <rhyme label="b" type="f">ontsteken</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">G'lijck 't heeft <rhyme label="b" type="f" corresp="#s9:l2">gebleken</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">Hy tierden als een <rhyme label="a" type="m" corresp="#s9:l1">beest</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Ach! daer quamen loode <rhyme label="c" type="f">swepen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Die het vleys tot 't been <rhyme label="c" type="f" corresp="#s9:l5">door-nepen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De kluppels treften sijne <rhyme label="a" type="m">le'en</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Soo dapper, datse <rhyme label="b" type="f">scheurden</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">Maer Hy niet <rhyme label="b" type="f" corresp="#s10:l2">treurden</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Hy maeckten gheen <rhyme label="a" type="m" corresp="#s10:l1">gesteen</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Maer heeft 't alles vroom <rhyme label="c" type="f">gedragen</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Ghy en hoorden Hem niet <rhyme label="c" type="f" corresp="#s10:l5">klagen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hy seyde, 'k heb noyt meerder <rhyme label="a" type="m">vreughd</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Gehadt van all' mijn <rhyme label="b" type="f">dagen</rhyme>;</l>
        <l id="s11:l3" met="2" type="-+">'k Heb niet te <rhyme label="b" type="f" corresp="#s11:l2">klagen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Sprack Lavrens g'heel <rhyme label="a" type="m" corresp="#s11:l1">verheught</rhyme>:</l>
        <l id="s11:l5" met="4" type="+-">Uwe scharpe <rhyme label="c" type="f">schorpioenen</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Zijn my aengenaem als <rhyme label="c" type="f" corresp="#s11:l5">soenen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Wat seght ghy nu, <rhyme label="a" type="m">Valeriaen</rhyme>!</l>
        <l id="s12:l2" met="3" type="-+">Van desen vroom <rhyme label="b" type="f">Diaken</rhyme>?</l>
        <l id="s12:l3" met="2" type="-+">Wat sult ghy <rhyme label="b" type="f" corresp="#s12:l2">maecken</rhyme>?</l>
        <l id="s12:l4" met="3" type="-+">Sult g' Hem los laten <rhyme label="a" type="m" corresp="#s12:l1">gaen</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Wien ghy niet en kond <rhyme label="c" type="f">verwinnen</rhyme>?</l>
        <l id="s12:l6" met="4" type="+-">Of sult ghy yet nieuws <rhyme label="c" type="f" corresp="#s12:l5">versinnen</rhyme>?</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hoort menschen, hoort wat hy <rhyme label="a" type="m">versint</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Ick moet u dit nu <rhyme label="b" type="f">seggen</rhyme>;</l>
        <l id="s13:l3" met="2" type="-+">Hy doet Hem <rhyme label="b" type="f" corresp="#s13:l2">leggen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Op 't vyer, 't welck Hem <rhyme label="a" type="m" corresp="#s13:l1">verslindt</rhyme>;</l>
        <l id="s13:l5" met="4" type="+-">Hy de'e leggen op een <rhyme label="c" type="f">Rooster</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Sint Laurens, der Armen <rhyme label="c" type="f" corresp="#s13:l5">Trooster</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hy wierdt gebra'en, Hy seyde <rhyme label="a" type="m">bly</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Keert om, snijdt, eet, versaedt <rhyme label="b" type="f">u</rhyme></l>
        <l id="s14:l3" met="2" type="-+">Valeriaen! <rhyme label="b" type="f" corresp="#s14:l2">nu</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">Leght m' op mijn and're <rhyme label="a" type="m" corresp="#s14:l1">zy</rhyme>.</l>
        <l id="s14:l5" met="4" type="+-">Ick ben nu genoegh <rhyme label="c" type="f">gebraden</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Nu meught ghy u wel <rhyme label="c" type="f" corresp="#s14:l5">verzaden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Laurens had naeuw'lijcx dit <rhyme label="a" type="m">geseyt</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Of Hy is <rhyme label="b" type="f">overleden</rhyme>,</l>
        <l id="s15:l3" met="2" type="-+">Tot 's Hemels <rhyme label="b" type="f" corresp="#s15:l2">stede</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Is sijne ziel <rhyme label="a" type="m" corresp="#s15:l1">geleydt</rhyme>.</l>
        <l id="s15:l5" met="4" type="+-">Daer bidt Hy voor ons seer <rhyme label="c" type="f">krachtich</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Dat God ons wil zijn <rhyme label="c" type="f" corresp="#s15:l5">gedachtich</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Gereyst zijt Ghy, Laurens! van <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s16:l2" met="3" type="-+">G' hebt vyer, en brand <rhyme label="b" type="f">geleden</rhyme>.</l>
        <l id="s16:l3" met="2" type="-+">Laet uw' <rhyme label="b" type="f" corresp="#s16:l2">gebeden</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Uyt blusschen 't Venus <rhyme label="a" type="m" corresp="#s16:l1">vyer</rhyme>.</l>
        <l id="s16:l5" met="4" type="+-">Bidt dat wy niet eeuwigh <rhyme label="c" type="f">branden</rhyme>,</l>
        <l id="s16:l6" met="4" type="+-">Brenght ons tot des hemels <rhyme label="c" type="f" corresp="#s16:l5">stranden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
