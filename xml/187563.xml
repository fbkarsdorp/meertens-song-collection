    <tags/>
    <melody>Het was een fraai rijk burgerskind</melody>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EEn korten weg is ons <rhyme label="a" type="m">bereid</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Om tot den Heer te <rhyme label="b" type="f">koomen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Geloof slechts in zijn <rhyme label="a" type="m" corresp="#s1:l1">heerlijkheid</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Zijn bystand werd <rhyme label="b" type="f" corresp="#s1:l2">vernoomen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Laat vaaren <rhyme label="c" type="f">fantazyen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die u dikmaal <rhyme label="c" type="f" corresp="#s1:l5">bestryen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Wend uw gemoed // in 't eeuwig <rhyme label="d" type="m">goed</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">U lijden wert <rhyme label="d" type="m" corresp="#s1:l7">verzoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gedenk dat God niet liever <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Als uwer zielen <rhyme label="b" type="f">leeven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Als gy hem maar geloove <rhyme label="a" type="m" corresp="#s2:l1">geeft</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Zoo komt gy haast uit <rhyme label="b" type="f" corresp="#s2:l2">sneeven</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">'t Is voortijds wel <rhyme label="c" type="f">gebleecken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Doen hy genas <rhyme label="c" type="f" corresp="#s2:l5">gebreeken</rhyme>;</l>
        <l id="s2:l7" met="4" type="-+">'t Geloof alleen // hielp op de <rhyme label="d" type="m">been</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Het geen onmoog'lijk <rhyme label="d" type="m" corresp="#s2:l7">scheen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gedenk dat God niet verr' en <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat Hy u niet zou <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Voor hem en is geen <rhyme label="a" type="m" corresp="#s3:l1">duisternis</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hy kan u wel <rhyme label="b" type="f" corresp="#s3:l2">bespooren</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Die 't oog zelfs heeft <rhyme label="c" type="f">geschaapen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hoe zoud' Hy moogen <rhyme label="c" type="f" corresp="#s3:l5">slaapen</rhyme>?</l>
        <l id="s3:l7" met="4" type="-+">Hy hoord en ziet // al wat <rhyme label="d" type="m">geschied</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Voor Hem bedekt is <rhyme label="d" type="m" corresp="#s3:l7">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Zijn hand en is ook niet <rhyme label="a" type="m">verkort</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Zijn magt is niet <rhyme label="b" type="f">benoomen</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Dus als gy niet geholpen <rhyme label="a" type="m" corresp="#s4:l1">word</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">'t Moet door een oorzaak <rhyme label="b" type="f" corresp="#s4:l2">koomen</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Of het zijn uwe <rhyme label="c" type="f">zonden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Daar met gy zijt <rhyme label="c" type="f" corresp="#s4:l5">gebonden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Of 't ongeloof // dat houd u <rhyme label="d" type="m">doof</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En 't maakt uw zinnen <rhyme label="d" type="m" corresp="#s4:l7">loof</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Geloof in zijnder <rhyme label="a" type="m">vriend'lijkheid</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Zijn vaaderlijke <rhyme label="b" type="f">minne</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Uw herte wel voor Hem <rhyme label="a" type="m" corresp="#s5:l1">bereid</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En laat Hem tot u <rhyme label="b" type="f" corresp="#s5:l2">inne</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Hy wil, voor alle <rhyme label="c" type="f">zaaken</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Zijn wooning in u <rhyme label="c" type="f" corresp="#s5:l5">maaken</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Als gy maar vlied // 't Geen Hem <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Hy en verlaat u <rhyme label="d" type="m" corresp="#s5:l7">niet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hoop altijd in het best van <rhyme label="a" type="m">Hem</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Zoo zal u troost <rhyme label="b" type="f">gebeuren</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die niet geloofden zijne <rhyme label="a" type="m" corresp="#s6:l1">stem</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die quaamen wel in <rhyme label="b" type="f" corresp="#s6:l2">treuren</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Maar die trouw by hem <rhyme label="c" type="f">vleeven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">En quaamen noit in <rhyme label="c" type="f" corresp="#s6:l5">sneeven</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Wel voor een tijd // leeden zy <rhyme label="d" type="m">strijd</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Maar tot haar groot <rhyme label="d" type="m" corresp="#s6:l7">profijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Liefde verwekt der liefden <rhyme label="a" type="m">aart</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">'t Geloof hoopt alle <rhyme label="b" type="f">dingen</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Maar af-keer ook den af-keer <rhyme label="a" type="m" corresp="#s7:l1">baard</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wan-trouw geen baat kan <rhyme label="b" type="f" corresp="#s7:l2">bringen</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Wat u komt in den <rhyme label="c" type="f">zinne</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Blijf altijd in zijn <rhyme label="c" type="f" corresp="#s7:l5">minne</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Al waar Hy gaat // uw oogen <rhyme label="d" type="m">slaat</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Van Hem niet af en <rhyme label="d" type="m" corresp="#s7:l7">laat</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wijn ende melk geeft Hy om <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zijn fontein vloeid <rhyme label="b" type="f">gestandig</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als gy hem maar uw jonste <rhyme label="a" type="m" corresp="#s8:l1">bied</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hy is altijd <rhyme label="b" type="f" corresp="#s8:l2">weldaadig</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Koom al die zijt <rhyme label="c" type="f">belaaden</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Hy sal u wel <rhyme label="c" type="f" corresp="#s8:l5">verzaaden</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Neem uw vermaak, in deeze <rhyme label="d" type="m">zaak</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Zoo vind uwe ziele <rhyme label="d" type="m" corresp="#s8:l7">smaak</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
