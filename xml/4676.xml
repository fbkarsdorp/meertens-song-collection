    <melody>Messieurs ne voulez rien mander</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OP Moises stoel, de <rhyme label="a" type="m">Phariseen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Gezeten waren lang <rhyme label="a" type="m" corresp="#s1:l1">geleen</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Zoo Iesus ons <rhyme label="b" type="f">beduyde</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Efter wou hy dat <rhyme label="c" type="m">gedaen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Gewandeld, en <rhyme label="c" type="m" corresp="#s1:l4">gegaen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Zou werden op’t <rhyme label="c" type="m" corresp="#s1:l4">vermaen</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Van deze <rhyme label="b" type="f" corresp="#s1:l3">luyden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Een lering, die den hoogsten <rhyme label="a" type="m">zoon</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ons door oorberlijkken heeft <rhyme label="a" type="m" corresp="#s2:l1">geboon</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Om daer mee te <rhyme label="b" type="f">verklaren</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Dat d’oprechtheyd vande <rhyme label="c" type="m">Leer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Gequetst werd <rhyme label="c" type="m" corresp="#s2:l4">nimmermeer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Door schennis of <rhyme label="c" type="m" corresp="#s2:l4">oneer</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Van sno’e <rhyme label="b" type="f" corresp="#s2:l3">leeraren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Men vond noyt Oly zonder <rhyme label="a" type="m">draf</rhyme>;</l>
        <l id="s3:l2" met="4" type="-+">Noch tarwe koren zonder <rhyme label="a" type="m" corresp="#s3:l1">kaf</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">End’ in de <rhyme label="b" type="f">huysgezinnen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Vande besten, was <rhyme label="c" type="m">altijd</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Bedrog, of haet en <rhyme label="c" type="m" corresp="#s3:l4">nijd</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Of yet wes tot <rhyme label="c" type="m" corresp="#s3:l4">verwijt</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Des Waerds, te <rhyme label="b" type="f" corresp="#s3:l3">vinnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Eng’len, die zoo reyn en <rhyme label="a" type="m">puir</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Geschapen waeren van <rhyme label="a" type="m" corresp="#s4:l1">natuir</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En bleven ook van <rhyme label="b" type="f">dezen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Niet bevrijdt, als <rhyme label="c" type="m">Lucifer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die van zoo schonen <rhyme label="c" type="m" corresp="#s4:l4">Star</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Kwam tot zoo vuile <rhyme label="c" type="m" corresp="#s4:l4">Nar</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Wel heeft <rhyme label="b" type="f" corresp="#s4:l3">bewezen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Iae in des Heren <rhyme label="a" type="m">huysgezin</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Vergaderd met zoo lieven <rhyme label="a" type="m" corresp="#s5:l1">min</rhyme>!</l>
        <l id="s5:l3" met="3" type="-+">Gebeurde noch al <rhyme label="b" type="f">quader</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">’t Bleek wel aen <rhyme label="c" type="m">Iscariot</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Die om zoo g’ringen <rhyme label="c" type="m" corresp="#s5:l4">lot</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Wierd van den hoogsten <rhyme label="c" type="m" corresp="#s5:l4">God</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Zoo sno’en <rhyme label="b" type="f" corresp="#s5:l3">verrader</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gelijkerwijs dan d’Eng’len, <rhyme label="a" type="m">noch</rhyme></l>
        <l id="s6:l2" met="4" type="-+">d’Apost’len Goods, het quaed <rhyme label="a" type="m" corresp="#s6:l1">bedrog</rhyme></l>
        <l id="s6:l3" met="3" type="-+">En quetst van haer <rhyme label="b" type="f">gezellen</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">Zoo en mag ook ’t leven <rhyme label="c" type="m">quaed</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Van die een goede <rhyme label="c" type="m" corresp="#s6:l4">staet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Onteerde, door <rhyme label="c" type="m" corresp="#s6:l4">misdaed</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Ons niet <rhyme label="b" type="f" corresp="#s6:l3">ontstellen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Niet meer als ons t’ontstellen <rhyme label="a" type="m">plag</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Het heilig echt, wanneer ment <rhyme label="a" type="m" corresp="#s7:l1">zag</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Van eenig fun <rhyme label="b" type="f">besmetten</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Want doorgaens de zonde <rhyme label="c" type="m">van</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Een eer-vergete <rhyme label="c" type="m" corresp="#s7:l4">man</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Wat hy ook doedt, en <rhyme label="c" type="m" corresp="#s7:l4">kan</rhyme></l>
        <l id="s7:l7" met="2" type="-+">De staet niet <rhyme label="b" type="f" corresp="#s7:l3">letten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Verstarkt ons Iesu, zone <rhyme label="a" type="m">Goods</rhyme>!</l>
        <l id="s8:l2" met="4" type="-+">En doed ons aende vaste <rhyme label="a" type="m" corresp="#s8:l1">roots</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Vast houwen uwer <rhyme label="b" type="f">Kerken</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Zoo dat ons uw’ waer <rhyme label="c" type="m">geloof</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Noch hel, noch vleisch, en <rhyme label="c" type="m" corresp="#s8:l4">roof</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Noch boos heyd en <rhyme label="c" type="m" corresp="#s8:l4">verdoof</rhyme></l>
        <l id="s8:l7" met="2" type="-+">Van quade <rhyme label="b" type="f" corresp="#s8:l3">werken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
