    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">Geestelijk lied</tag>
    </tags>
    <melody>Het jaar is langer dan de dag</melody>
    <categories/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EEn goedt nieu liedt heb ick <rhyme label="a" type="m">bedacht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O Broeders al te <rhyme label="b" type="f">same</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat laet ons singhen met <rhyme label="a" type="m" corresp="#s1:l1">eendracht</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Tot prijs van Godes <rhyme label="b" type="f" corresp="#s1:l2">name</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als wy nu by den ander <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Vergadert in den <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo is het schier den tijdt hoort <rhyme label="a" type="m" corresp="#s2:l1">mijn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat wy nu scheyden <rhyme label="b" type="f" corresp="#s2:l2">weere</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och het scheyden en is gheen <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Al moeten wy <rhyme label="b" type="f">verstroyen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Als wy hier namaels werden <rhyme label="a" type="m" corresp="#s3:l1">groot</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Versaemt in eender <rhyme label="b" type="f" corresp="#s3:l2">koyen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Heere sal sijn schaepkens <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vergaderen seer <rhyme label="b" type="f">blijde</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Van alle hoecken waer sy <rhyme label="a" type="m" corresp="#s4:l1">zijn</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Comt ghy <rhyme label="b" type="f" corresp="#s4:l2">ghebenedijde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O wat een liefd' is ons <rhyme label="a" type="m">vertoont</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wilt dit ghedachtigh <rhyme label="b" type="f">werden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Siet hoe wy sullen zijn <rhyme label="a" type="m" corresp="#s5:l1">ghekroont</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ist dat wy hier <rhyme label="b" type="f" corresp="#s5:l2">volherden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hierom soo laet ons houden <rhyme label="a" type="m">vast</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Aen sijn beloften <rhyme label="b" type="f">schoone</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Op dat wy niet worden <rhyme label="a" type="m" corresp="#s6:l1">verrast</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Verliesen onse <rhyme label="b" type="f" corresp="#s6:l2">kroone</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Niemandt en wordt gekroont, <rhyme label="a" type="m">aenhoort</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ten zy dat sy <rhyme label="b" type="f">verwinnen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">End' setten in des Heeren <rhyme label="a" type="m" corresp="#s7:l1">woordt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Nacht ende dach haer <rhyme label="b" type="f" corresp="#s7:l2">sinnen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ons is betrouwt alsulcken <rhyme label="a" type="m">schat</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Al in ons aerden <rhyme label="b" type="f">vaten</rhyme> //</l>
        <l id="s8:l3" met="4" type="-+">Laet ons ghetrouw' bewaren <rhyme label="a" type="m" corresp="#s8:l1">dat</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ons leven daer voor <rhyme label="b" type="f" corresp="#s8:l2">laten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Al ist dat wy een kleyne <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Als pelgrims moeten <rhyme label="b" type="f">swerven</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Met vreuchden laet ons zijn <rhyme label="a" type="m" corresp="#s9:l1">verblijdt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Verlanghen nae ons <rhyme label="b" type="f" corresp="#s9:l2">erven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Christi zijn wy deelachtigh <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Och vriendekens vol <rhyme label="b" type="f">trouwen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Soo wy 't begin sijns wesens <rhyme label="a" type="m" corresp="#s10:l1">goet</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Tot in't eynde <rhyme label="b" type="f" corresp="#s10:l2">behouwen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ist dat wy nu al inden <rhyme label="a" type="m">geest</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Aldus hebben <rhyme label="b" type="f">begonnen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Laet ons niet van 'tghekroonde <rhyme label="a" type="m" corresp="#s11:l1">beest</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Wederom zijn <rhyme label="b" type="f" corresp="#s11:l2">verwonnen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Laet ons malkander in't <rhyme label="a" type="m">ghebedt</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Altijdt ghedachtigh <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En laet ons met een vast <rhyme label="a" type="m" corresp="#s12:l1">opset</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Den Heer van herten <rhyme label="b" type="f" corresp="#s12:l2">vreesen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">O Broeders ende Susters <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Laet ons altijdt <rhyme label="b" type="f">verneeren</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Op dat wy met malkander <rhyme label="a" type="m" corresp="#s13:l1">fijn</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Eeuwelijck <rhyme label="b" type="f" corresp="#s13:l2">triumpheren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
