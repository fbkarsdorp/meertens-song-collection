  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KOmt luystert na dit kluchtig <rhyme label="a" type="m">lied</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ick sal ’t u gaen <rhyme label="b" type="f">vertellen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Watter in den Haegh is <rhyme label="a" type="m" corresp="#s1:l1">geschiet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Al van een damoiselle La, <rhyme label="b" type="f" corresp="#s1:l2">la</rhyme>,</l>
        <l id="s1:l5" met="5" type="-+">Al van een <rhyme label="b" type="f" corresp="#s1:l2">damoiselle</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy sagh datter niemant en <rhyme label="a" type="m">quam</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Al om haer te gaen <rhyme label="b" type="f">vrijde</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En doen trock die schoone <rhyme label="a" type="m" corresp="#s2:l1">Madam</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Een degen aen haer zijde la, <rhyme label="b" type="f" corresp="#s2:l2">la</rhyme>,</l>
        <l id="s2:l5" met="5" type="-+">Een degen aen haer <rhyme label="b" type="f" corresp="#s2:l2">zijde</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Al met een Pluymken op den <rhyme label="a" type="m">Hoed</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Soo sagmen haer <rhyme label="b" type="f">brageren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En sy dee daer soo meenigh <rhyme label="a" type="m" corresp="#s3:l1">groet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Al om haer te braveren la, <rhyme label="b" type="f" corresp="#s3:l2">la</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">Al om haer te <rhyme label="b" type="f" corresp="#s3:l2">braveren</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick wensch u goeden dagh <rhyme label="a" type="m">monseur</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ay wilt my <rhyme label="b" type="f">excuseren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat ick soo stout al aen u <rhyme label="a" type="m" corresp="#s4:l1">deur</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">My kome presenteere La, <rhyme label="b" type="f" corresp="#s4:l2">la</rhyme>,</l>
        <l id="s4:l5" met="5" type="-+">My kome <rhyme label="b" type="f" corresp="#s4:l2">presenteere</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wel wat is dat voor een <rhyme label="a" type="m">monseur</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Al met sijn minne <rhyme label="b" type="f">treken</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Gy zijt van Amsterdam mon <rhyme label="a" type="m" corresp="#s5:l1">keur</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ick hoor het aen u spreken, La, <rhyme label="b" type="f" corresp="#s5:l2">la</rhyme>,</l>
        <l id="s5:l5" met="5" type="-+">Ick hoor het aen u <rhyme label="b" type="f" corresp="#s5:l2">spreken</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ja lief ick ben van <rhyme label="a" type="m">Amsterdam</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Om u heb ick <rhyme label="b" type="f">verlaten</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Mijn Vaders groote huys en <rhyme label="a" type="m" corresp="#s6:l1">Stam</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Om met u wat te praten la, <rhyme label="b" type="f" corresp="#s6:l2">la</rhyme>,</l>
        <l id="s6:l5" met="5" type="-+">Om met u wat te <rhyme label="b" type="f" corresp="#s6:l2">praten</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Mijn hertjen ick sech het plat <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ach consenteert mijn <rhyme label="b" type="f">beden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Ick kom u kiesen voor mijn <rhyme label="a" type="m" corresp="#s7:l1">bruyt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ey stelt mijn toch te vreden la, <rhyme label="b" type="f" corresp="#s7:l2">la</rhyme>,</l>
        <l id="s7:l5" met="5" type="-+">Ey stelt mijn toch te <rhyme label="b" type="f" corresp="#s7:l2">vreden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel Joncker hoe spreekt gy <rhyme label="a" type="m">alree</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Van om met my te <rhyme label="b" type="f">paren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">wel Joncker ick segh uw neen <rhyme label="a" type="m" corresp="#s8:l1">neen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ag wilt u moeyt wat sparen la <rhyme label="b" type="f" corresp="#s8:l2">la</rhyme>,</l>
        <l id="s8:l5" met="5" type="-+">Ag wilt u moeyt wat <rhyme label="b" type="f" corresp="#s8:l2">sparen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ach liefste ick sweer u mijn <rhyme label="a" type="m">trou</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">‘k En sal uw noyt <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En gy sult zijn mijn weerde <rhyme label="a" type="m" corresp="#s9:l1">Vrou</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Ick bid u weest te vreden la <rhyme label="b" type="f" corresp="#s9:l2">la</rhyme>,</l>
        <l id="s9:l5" met="5" type="-+">Ick bid u weest te <rhyme label="b" type="f" corresp="#s9:l2">vreden</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wel Jonckman ick ben wel te <rhyme label="a" type="m">vree</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">mijn trouw aen u te <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">maer ‘k en wil na geen ander <rhyme label="a" type="m" corresp="#s10:l1">stee</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">In den Haeg wil ick leven la <rhyme label="b" type="f" corresp="#s10:l2">la</rhyme>,</l>
        <l id="s10:l5" met="5" type="-+">In den Haeg wil ick <rhyme label="b" type="f" corresp="#s10:l2">leven</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Liefste ick zweer u op mijn <rhyme label="a" type="m">trouwe</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">In den Haegh sullen wy <rhyme label="b" type="f">blijven</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En ick sal u in weerde <rhyme label="a" type="m" corresp="#s11:l1">houwe</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">want ick heb noch veel schijven la <rhyme label="b" type="f" corresp="#s11:l2">la</rhyme></l>
        <l id="s11:l5" met="5" type="-+">want ick heb noch veel <rhyme label="b" type="f" corresp="#s11:l2">schijven</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Jongman hout u heden <rhyme label="a" type="m">gereet</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">wy sullen <rhyme label="b" type="f">ondertrouwe</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">‘k Heb van monpere goet <rhyme label="a" type="m" corresp="#s12:l1">bescheet</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Hy sal ons laten trouwe la <rhyme label="b" type="f" corresp="#s12:l2">la</rhyme>,</l>
        <l id="s12:l5" met="5" type="-+">Hy sal ons laten <rhyme label="b" type="f" corresp="#s12:l2">trouwe</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ach hertje ick ben uyt de <rhyme label="a" type="m">pijn</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Ick wilt monpere gaen <rhyme label="b" type="f">vragen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Ach neemt nu desen Rinck van <rhyme label="a" type="m" corresp="#s13:l1">my</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Tot binnen twee dry dagen la <rhyme label="b" type="f" corresp="#s13:l2">la</rhyme>,</l>
        <l id="s13:l5" met="5" type="-+">Tot binnen twee dry <rhyme label="b" type="f" corresp="#s13:l2">dagen</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">De Bruyt die was seer wel te <rhyme label="a" type="m">vreen</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Sy heeft den Rinck <rhyme label="b" type="f">genomen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Den Bruygom is na Amsterdam <rhyme label="a" type="m" corresp="#s14:l1">getreen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Hy sal niet weder komen la <rhyme label="b" type="f" corresp="#s14:l2">la</rhyme>,</l>
        <l id="s14:l5" met="5" type="-+">Hy sal niet weder <rhyme label="b" type="f" corresp="#s14:l2">komen</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">De Bruyt maeckten seer grooten <rhyme label="a" type="m">rouw</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Als den tijdt was ten <rhyme label="b" type="f">ende</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Den Bruydegom was maer een <rhyme label="a" type="m" corresp="#s15:l1">vrouw</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Hoort eens na dese ellende la <rhyme label="b" type="f" corresp="#s15:l2">la</rhyme>,</l>
        <l id="s15:l5" met="5" type="-+">Hoort eens na dese <rhyme label="b" type="f" corresp="#s15:l2">ellende</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Oorlof hoe ben ick nu in <rhyme label="a" type="m">pijn</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Den moet is my <rhyme label="b" type="f">verlooren</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Dat ick dacht nu getrout te <rhyme label="a" type="m" corresp="#s16:l1">sijn</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Nu ben ick wel geschoren la <rhyme label="b" type="f" corresp="#s16:l2">la</rhyme>,</l>
        <l id="s16:l5" met="5" type="-+">Nu ben ick wel <rhyme label="b" type="f" corresp="#s16:l2">geschoren</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
