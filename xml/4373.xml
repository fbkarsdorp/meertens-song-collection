  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAar henen vlugge <rhyme label="a" type="m">Karileen</rhyme>?</l>
        <l id="s1:l2" met="5" type="+-">Iicho, chai, siri, diri, <rhyme label="b" type="m">dai</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Mach Koridon niet met u <rhyme label="a" type="m" corresp="#s1:l1">treen</rhyme>?</l>
        <l id="s1:l4" met="4" type="-+">Van siri, dirim, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Neen Koridon! den avont <rhyme label="a" type="m">daalt</rhyme>.</l>
        <l id="s2:l2" met="5" type="+-">Iicho, chai, siri, diri, <rhyme label="b" type="m">dai</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Het vee dient in de kooi <rhyme label="a" type="m" corresp="#s2:l1">gehaalt</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ai Nimf, waar toe dees yd'le <rhyme label="a" type="m">zorg</rhyme>!</l>
        <l id="s3:l2" met="5" type="+-">Iicho, chai, siri, diri, <rhyme label="b" type="m">dai</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Ik blijf voor uwe schaapjes <rhyme label="a" type="m" corresp="#s3:l1">borg</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Rust hier een weinig, zoete <rhyme label="a" type="m">bek</rhyme>!</l>
        <l id="s4:l2" met="5" type="+-">Iicho, chai, siri, diri, <rhyme label="b" type="m">dai</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Op dat ik u mijn smart <rhyme label="a" type="m" corresp="#s4:l1">vertrek</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Mijn harte brant van zoete <rhyme label="a" type="m">min</rhyme>;</l>
        <l id="s5:l2" met="5" type="+-">Iicho, chai, siri, diri, <rhyme label="b" type="m">dai</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">'k VVeet van mijn smart, eind' nog <rhyme label="a" type="m" corresp="#s5:l1">begin</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maar wie is d'oorzaak van uw' <rhyme label="a" type="m">pijn</rhyme>?</l>
        <l id="s6:l2" met="5" type="+-">Iicho, chai, siri, diri, <rhyme label="b" type="m">dai</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Zij die mij vraagt moet d'oorzaak <rhyme label="a" type="m" corresp="#s6:l1">zijn</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De blixem van uw' hel <rhyme label="a" type="m">gezigt</rhyme>,</l>
        <l id="s7:l2" met="5" type="+-">Iicho, chai, siri, diri, <rhyme label="b" type="m">dai</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Heeft, in mijn borst, dees brant <rhyme label="a" type="m" corresp="#s7:l1">gestigt</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Neen, neen! uw' eigen ogen <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s8:l2" met="5" type="+-">Iicho, chai, siri, diri, <rhyme label="b" type="m">dai</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">De oorzaak van uw <rhyme label="a" type="m" corresp="#s8:l1">minne-pijn</rhyme>;</l>
        <l id="s8:l4" met="4" type="-+">Dus wend'ze liever om om <rhyme label="c" type="m">om</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Zagt Harder! wie komt gins <rhyme label="a" type="m">gegaan</rhyme>?</l>
        <l id="s9:l2" met="5" type="+-">Iicho, chai, siri, diri, <rhyme label="b" type="m">dai</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Verschuil uw, het is <rhyme label="a" type="m" corresp="#s9:l1">Floriaan</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Van siri, diri, dom, brom, <rhyme label="c" type="m">brom</rhyme>.</l>
      </lg>
    </lg>
  </text>
