<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>163078</id>
    <date>
      <year-start>1700</year-start>
      <year-end>1700</year-end>
    </date>
    <tags/>
    <melody>Liefste lief wanneer zal het wezen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Liefste Lief hoe neer sal ‘t <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">dat gy my eens sult <rhyme label="a" type="f" corresp="#s1:l1">geneesen</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Van de <rhyme label="b" type="m">smart</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">van de <rhyme label="b" type="m" corresp="#s1:l3">smart</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dien ik voel in mijn <rhyme label="b" type="m" corresp="#s1:l3">Jonkhart</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Sullen noyt mijn droeve <rhyme label="c" type="f">klagten</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">U wraekgierig hert <rhyme label="c" type="f" corresp="#s1:l6">versagten</rhyme>,</l>
        <l id="s1:l8" met="2" type="+-">Sult gy <rhyme label="d" type="m">dan</rhyme>,</l>
        <l id="s1:l9" met="2" type="+-">Sult gy <rhyme label="d" type="m" corresp="#s1:l8">dan</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Noyt van mijn maken uw <rhyme label="d" type="m" corresp="#s1:l8">Man</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Jonkman staekt u droevig <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Gy en sult geen troost <rhyme label="a" type="f" corresp="#s2:l1">verwinnen</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">want ik <rhyme label="b" type="m">ken</rhyme>,</l>
        <l id="s2:l4" met="2" type="+-">want ik <rhyme label="b" type="m" corresp="#s2:l3">ken</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Nog wel blijven dien ik <rhyme label="b" type="m" corresp="#s2:l3">ben</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Sou ik in mijn Jonge <rhyme label="c" type="f">jaren</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Alree denken om te <rhyme label="c" type="f" corresp="#s2:l6">paren</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Jonkman <rhyme label="d" type="m">ziet</rhyme>,</l>
        <l id="s2:l9" met="2" type="+-">Jonkman <rhyme label="d" type="m" corresp="#s2:l8">ziet</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Jk hou mijn uyt het <rhyme label="d" type="m" corresp="#s2:l8">verdriet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Geen verdriet sal u <rhyme label="a" type="f">geschieden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Lief en wilt van mijn niet <rhyme label="a" type="f" corresp="#s3:l1">vlieden</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">ik sal <rhyme label="b" type="m">jou</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Jk sal <rhyme label="b" type="m" corresp="#s3:l3">jou</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Blijven als een Man <rhyme label="b" type="m" corresp="#s3:l3">getrouw</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Alle druk en zwaere <rhyme label="c" type="f">plagen</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Sullen wy te samen <rhyme label="c" type="f" corresp="#s3:l6">dragen</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Liefste <rhyme label="d" type="m">soet</rhyme></l>
        <l id="s3:l9" met="2" type="+-">Liefste <rhyme label="d" type="m" corresp="#s3:l8">soet</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">Staekt dog eens uw wreed <rhyme label="d" type="m" corresp="#s3:l8">gemoet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">U en baet geen <rhyme label="a" type="f">presentatie</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">ik en vind in u geen <rhyme label="a" type="f" corresp="#s4:l1">gratie</rhyme>,</l>
        <l id="s4:l3" met="2" type="+-">Om te <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s4:l4" met="2" type="+-">Om te <rhyme label="b" type="m" corresp="#s4:l3">zijn</rhyme></l>
        <l id="s4:l5" met="4" type="+-">U Vrouw hier in 't Werelds <rhyme label="b" type="m" corresp="#s4:l3">pleyn</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Al u soet en aerdig <rhyme label="c" type="f">vleyen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Js maer om mijn te <rhyme label="c" type="f" corresp="#s4:l6">verleyen</rhyme>,</l>
        <l id="s4:l8" met="2" type="+-">Van mijn <rhyme label="d" type="m">Eer</rhyme>,</l>
        <l id="s4:l9" met="2" type="+-">van mijn <rhyme label="d" type="m" corresp="#s4:l8">Eer</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">En mijn dan verlaten <rhyme label="d" type="m" corresp="#s4:l8">weer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Och ik zweer myn Lief <rhyme label="a" type="f">Klarinde</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">So gy my ontrouw sult <rhyme label="a" type="f" corresp="#s5:l1">vinden</rhyme>,</l>
        <l id="s5:l3" met="2" type="+-">dat de <rhyme label="b" type="m">dood</rhyme>,</l>
        <l id="s5:l4" met="2" type="+-">dat de <rhyme label="b" type="m" corresp="#s5:l3">dood</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Mijn weg rukt in Carons <rhyme label="b" type="m" corresp="#s5:l3">schoot</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En dat al de Helsche <rhyme label="c" type="f">Zielen</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Mijn terstondt komen <rhyme label="c" type="f" corresp="#s5:l6">vernielen</rhyme>,</l>
        <l id="s5:l8" met="2" type="+-">dat ik <rhyme label="d" type="m">mag</rhyme>,</l>
        <l id="s5:l9" met="2" type="+-">dat ik <rhyme label="d" type="m" corresp="#s5:l8">mag</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">Noyt weer komen voor den <rhyme label="d" type="m" corresp="#s5:l8">dag</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Door uw Eed en <rhyme label="a" type="f">trouwigheden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Die gy aen mijn komt <rhyme label="a" type="f" corresp="#s6:l1">besteden</rhyme></l>
        <l id="s6:l3" met="2" type="+-">Sal ik <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s6:l4" met="2" type="+-">Sal ik <rhyme label="b" type="m" corresp="#s6:l3">dan</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Zijn u Vrouw en gy mijn <rhyme label="b" type="m" corresp="#s6:l3">Man</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Wilt daer op mijn Trouw <rhyme label="c" type="f">ontfangen</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Daar na is al mijn <rhyme label="c" type="f" corresp="#s6:l6">verlangen</rhyme>,</l>
        <l id="s6:l8" met="2" type="+-">Laet ons <rhyme label="d" type="m">gaen</rhyme>,</l>
        <l id="s6:l9" met="2" type="+-">Laet ons <rhyme label="d" type="m" corresp="#s6:l8">gaen</rhyme></l>
        <l id="s6:l10" met="4" type="+-">Jn den Egt van stonden <rhyme label="d" type="m" corresp="#s6:l8">aen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Jk ontfang u trouw mijn <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">‘k Sal u weder min <rhyme label="a" type="f" corresp="#s7:l1">betoonen</rhyme>,</l>
        <l id="s7:l3" met="2" type="+-">Met een <rhyme label="b" type="m">Pand</rhyme>,</l>
        <l id="s7:l4" met="2" type="+-">met een <rhyme label="b" type="m" corresp="#s7:l3">Pand</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">En een Ring van <rhyme label="b" type="m" corresp="#s7:l3">Diamant</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Nu is al mijn droevig <rhyme label="c" type="f">klagen</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Heel verkeert in blijde <rhyme label="c" type="f" corresp="#s7:l6">dagen</rhyme>,</l>
        <l id="s7:l8" met="2" type="+-">Komt mijn <rhyme label="d" type="m">Bruyd</rhyme>,</l>
        <l id="s7:l9" met="2" type="+-">Komt mijn <rhyme label="d" type="m" corresp="#s7:l8">bruyd</rhyme></l>
        <l id="s7:l10" met="4" type="+-">Laet ons Lof verbreyden <rhyme label="d" type="m" corresp="#s7:l8">uyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
