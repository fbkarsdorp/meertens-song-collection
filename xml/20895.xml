  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MESSIAS was op dese <rhyme label="a" type="m">aerd'</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Te Bethlehem <rhyme label="b" type="f">ghe-boo-ren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hem hadd' een reyne Maeght <rhyme label="a" type="m" corresp="#s1:l1">gebaert</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Een Maeght van goeden <rhyme label="a" type="m" corresp="#s1:l1">aert</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die al-le eer was <rhyme label="a" type="m" corresp="#s1:l1">waerd</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Van God daer toe <rhyme label="b" type="f" corresp="#s1:l2">verkoo-ren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wie souden dan niet wesen <rhyme label="a" type="m">bly</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wie sou van vreughd niet <rhyme label="b" type="f">singen</rhyme>!</l>
        <l id="s2:l3" met="4" type="-+">Als uyt een Maeght gebaert was <rhyme label="a" type="m" corresp="#s2:l1">Hy</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die ons quam maecken <rhyme label="a" type="m" corresp="#s2:l1">vry</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Van sonden; die by <rhyme label="a" type="m" corresp="#s2:l1">ty</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In d' Hell' ons' zielen <rhyme label="b" type="f" corresp="#s2:l2">dringen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer siet! Herodes wreed van <rhyme label="a" type="m">moed</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sendt om in alle <rhyme label="b" type="f">hoecken</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Hy dorst na Iesu Christi <rhyme label="a" type="m" corresp="#s3:l1">bloed</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hy omme-soecken <rhyme label="a" type="m" corresp="#s3:l1">doet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Na 't alderhoochste <rhyme label="a" type="m" corresp="#s3:l1">Goedt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In wiegen, end' in <rhyme label="b" type="f" corresp="#s3:l2">hoecken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy socht Messiam totter <rhyme label="a" type="m">dood</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Rontom in alle <rhyme label="b" type="f">gaten</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Sijn jalousye was soo <rhyme label="a" type="m" corresp="#s4:l1">groot</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat hy tot sich <rhyme label="a" type="m" corresp="#s4:l1">ontboodt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">(Als of hy was in <rhyme label="a" type="m" corresp="#s4:l1">noodt</rhyme>)</l>
        <l id="s4:l6" met="3" type="-+">Veel duysende <rhyme label="b" type="f" corresp="#s4:l2">Soldaten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy gaf haer last om doodt te <rhyme label="a" type="m">slaen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En om 't geweer 't <rhyme label="b" type="f">onscheden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Op 't jonghe bloed, 't welck noch niet <rhyme label="a" type="m" corresp="#s5:l1">staen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Of naeuw'lijcx noch kon <rhyme label="a" type="m" corresp="#s5:l1">gaen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Die 't sogh noch most <rhyme label="a" type="m" corresp="#s5:l1">ontfaen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Uyt sijne Moeders <rhyme label="b" type="f" corresp="#s5:l2">leden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Men loopt, men roept, men tiert, men <rhyme label="a" type="m">swerft</rhyme></l>
        <l id="s6:l2" met="3" type="-+">In steden, en te <rhyme label="b" type="f">landen</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Men treckt, men rockt, men smijt, men <rhyme label="a" type="m" corresp="#s6:l1">kerft</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">De teere jonckheyd <rhyme label="a" type="m" corresp="#s6:l1">sterft</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Maer 't Hemelrijck sy <rhyme label="a" type="m" corresp="#s6:l1">erft</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Door deser Beulen <rhyme label="b" type="f" corresp="#s6:l2">handen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De Moeders maecken groot <rhyme label="a" type="m">gerucht</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Men hoort haer bitter <rhyme label="b" type="f">kermen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Daer gaet niet om als swaer <rhyme label="a" type="m" corresp="#s7:l1">gesucht</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">'t Gehuyl klimt tot de <rhyme label="a" type="m" corresp="#s7:l1">lucht</rhyme>;</l>
        <l id="s7:l5" met="3" type="-+">Maria neemt de <rhyme label="a" type="m" corresp="#s7:l1">vlucht</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Om Iesvm te <rhyme label="b" type="f" corresp="#s7:l2">beschermen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Bedruckte Rachel! schreyt niet <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Drooght af uw' natte <rhyme label="b" type="f">oogen</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">'t Is uwe Kinders groote <rhyme label="a" type="m" corresp="#s8:l1">eer</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dat haer het scharp <rhyme label="a" type="m" corresp="#s8:l1">geweer</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Vermoort, om onsen <rhyme label="a" type="m" corresp="#s8:l1">Heer</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Des wilt uw' oogen <rhyme label="b" type="f" corresp="#s8:l2">droogen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">En ghy, O Kinders! die 't <rhyme label="a" type="m">besit</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Des Hemels hebt <rhyme label="b" type="f">verkregen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Gedachtich zijt uw' <rhyme label="a" type="m" corresp="#s9:l1">mede-lit</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">Met grooten yver <rhyme label="a" type="m" corresp="#s9:l1">bidt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Dat ick in 's Hemels <rhyme label="a" type="m" corresp="#s9:l1">Wit</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Mach worden <rhyme label="b" type="f" corresp="#s9:l2">ingeschreven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
