    <melody>O kerstnacht schoner dan de dagen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk roep, o ! Godt ! met groot <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Tot u, nu met betraende <rhyme label="a" type="f" corresp="#s1:l1">wanghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">O Heer ! wanneer sal zijn dien <rhyme label="b" type="m">dach</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat ghy mijn Ziele sult <rhyme label="c" type="f">opwecken</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En tot u al mijn sinnen <rhyme label="c" type="f" corresp="#s1:l4">trecken</rhyme> ?</l>
        <l id="s1:l6" met="4" type="-+">Op dat ick u na-loopen <rhyme label="b" type="m" corresp="#s1:l3">mach</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och ! ick ben traegh: Mijn hert en <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Gaen Dit, en Dat, te seer <rhyme label="a" type="f" corresp="#s2:l1">beminnen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Oock aerdtsche sorghe my <rhyme label="b" type="m">beswaert</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Och ! Heer, veel Doornen in my <rhyme label="c" type="f">steecken</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die vaeck mijn heyl'ghen yver <rhyme label="c" type="f" corresp="#s2:l4">breecken</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En trecken mijnen Geest ter <rhyme label="b" type="m" corresp="#s2:l3">aerd'</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Heer, laet niet toe, dat 't minst voor 't <rhyme label="a" type="f">meeste</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Het quaedt voor 't goedt, 't Vleesch voor den <rhyme label="a" type="f" corresp="#s3:l1">Geeste</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Den Heere voor sijn Slave <rhyme label="b" type="m">wijckt</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Wilt dees' disordre in my <rhyme label="c" type="f">weeren</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Ey ! laet het waerdste <rhyme label="c" type="f" corresp="#s3:l4">triumpheeren</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Al Souvereyn die noyt <rhyme label="b" type="m" corresp="#s3:l3">beswijckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ey ! laet u Geest my steeds <rhyme label="a" type="f">regeeren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Mijn quade sinnen <rhyme label="a" type="f" corresp="#s4:l1">over-heeren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En dat u heyl'ghe Naem ter <rhyme label="b" type="m">eer</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Ick bid' om pracht noch groote <rhyme label="c" type="f">goeden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Noch om onnutte <rhyme label="c" type="f" corresp="#s4:l4">overvloeden</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Maer dit, als 't beste, ick <rhyme label="b" type="m" corresp="#s4:l3">begheer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">SOo langh ick dit niet heb <rhyme label="a" type="f">verkreghen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Soo is mijn Ziel altijdt <rhyme label="a" type="f" corresp="#s5:l1">verleghen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Och ! 't woeligh hert is noyt <rhyme label="b" type="m">vernoeght</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Het weynigh dat ick kan <rhyme label="c" type="f">ghevoelen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dat kan mijn groote lust niet <rhyme label="c" type="f" corresp="#s5:l4">koelen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Noch maecken dat mijn Ziel niet <rhyme label="b" type="m" corresp="#s5:l3">wroeght</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hoe lange, Heer, sal ick dus <rhyme label="a" type="f">klaghen</rhyme> ?</l>
        <l id="s6:l2" met="4" type="-+">Dit lastigh pack verdrietigh <rhyme label="a" type="f" corresp="#s6:l1">draghen</rhyme> ?</l>
        <l id="s6:l3" met="4" type="-+">Ghy roept seer gunstigh, Komt tot <rhyme label="b" type="m">my</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Ick koom tot u, belast, <rhyme label="c" type="f">beladen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Vol hongher, dorst: Wilt my <rhyme label="c" type="f" corresp="#s6:l4">verzaden</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Mijn droeve Ziel we'er maecken <rhyme label="b" type="m" corresp="#s6:l3">bly</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och ! na u Woordt, verhoort mijn <rhyme label="a" type="f">smeken</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Ghy kent mijn last, weet mijn <rhyme label="a" type="f" corresp="#s7:l1">ghebreken</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Verhoort my, Jesu, lieve <rhyme label="b" type="m">Heer</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Siet ! hoe ick met bedroefder <rhyme label="c" type="f">Zielen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Voor u ootmoedigh koom te <rhyme label="c" type="f" corresp="#s7:l4">knielen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En legh hier voor u voeten <rhyme label="b" type="m" corresp="#s7:l3">ne'er</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och ! Heer, ick wil met heete <rhyme label="a" type="f">tranen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">U staegh op u beloften <rhyme label="a" type="f" corresp="#s8:l1">manen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Tot dat ghy my verhooren <rhyme label="b" type="m">sult</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">O ! ghy, mijn Ziel, wilt vast <rhyme label="c" type="f">betrouwen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">De Heer die sal sijn Woordt wel <rhyme label="c" type="f" corresp="#s8:l4">houwen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Verbeydt den tijdt maer met <rhyme label="b" type="m" corresp="#s8:l3">ghedult</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
