  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Seght my Phillis myn over-schoone <rhyme label="a" type="m">belt</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Hoe langh dat ghy my noch in u <rhyme label="a" type="m" corresp="#s1:l1">ghewelt</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Sult houden sonder mynen druck <rhyme label="b" type="m">t'aen-sien</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Daer ick alle <rhyme label="c" type="f">daghen</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Voor u boogh myn <rhyme label="b" type="m" corresp="#s1:l3">knien</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Neemt ghy u <rhyme label="c" type="f" corresp="#s1:l4">behaghen</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Van my wegh te <rhyme label="b" type="m" corresp="#s1:l3">vlien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Hebt ick van u dan dese straf <rhyme label="a" type="m">verdint</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Om dat ick soo ghetouw u heb <rhyme label="a" type="m" corresp="#s2:l1">bemint</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Is dat den loon van myn <rhyme label="b" type="m">stantvastigheyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Oft hebt ghy die <rhyme label="c" type="f">krachten</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Als dat ghy door <rhyme label="b" type="m" corresp="#s2:l3">spyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">My meer soudt doen <rhyme label="c" type="f" corresp="#s2:l4">trachten</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Naer u <rhyme label="b" type="m" corresp="#s2:l3">schoonigheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Houdt op Phillis van my meer spyt te <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">U wreetheydt sal noch meer myn liefde <rhyme label="a" type="m" corresp="#s3:l1">voen</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Want ick merck als dat ghy maer uyt <rhyme label="b" type="m">aerdigheyt</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Om my te <rhyme label="c" type="f">bekinnen</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Aen my hebt <rhyme label="b" type="m" corresp="#s3:l3">ont-seyt</rhyme>.</l>
        <l id="s3:l6" met="3" type="+-">'tGheniet van u <rhyme label="c" type="f" corresp="#s3:l4">minne</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">En <rhyme label="b" type="m" corresp="#s3:l3">lieffelyckheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Laet toe Princes dat ick u jonst <rhyme label="a" type="m">verwerf</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Begheert ghy niet dat ick van liefde <rhyme label="a" type="m" corresp="#s4:l1">sterf</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Oft verdient, die u mint, de doodt voor <rhyme label="b" type="m">straf</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">'tSal worden <rhyme label="c" type="f">gheschreven</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Tot spyt op myn <rhyme label="b" type="m" corresp="#s4:l3">graf</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">De hoop van my <rhyme label="c" type="f" corresp="#s4:l4">leven</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">De doodt aen my <rhyme label="b" type="m" corresp="#s4:l3">gaf</rhyme>.</l>
      </lg>
    </lg>
  </text>
