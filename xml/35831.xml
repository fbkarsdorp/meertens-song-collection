    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MAeght, soeckt ghy door u <rhyme label="a" type="m">Maeghde-staet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hier, en in d' Hemel zijn <rhyme label="b" type="f">verheven</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">'t Sal geschien; soo ghy met de <rhyme label="a" type="m" corresp="#s1:l1">daet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Doet, al wat ghy hier vint <rhyme label="b" type="f" corresp="#s1:l2">beschreven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aen Godt weest altijdt soo <rhyme label="a" type="m">gehecht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat hy noyt is van uwe <rhyme label="b" type="f">oogen</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Ootmoedigh zijt; In kleed'ren <rhyme label="a" type="m" corresp="#s2:l1">slecht</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hoovaerdigheyt wilt noyt <rhyme label="b" type="f" corresp="#s2:l2">gedoogen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Eert, dient, acht, mint Godt boven <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Moet zijn u al, in alle <rhyme label="b" type="f">saecken</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Dat u van Godt af-trecken <rhyme label="a" type="m" corresp="#s3:l1">sal</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ende aftreckt, moet ghy <rhyme label="b" type="f" corresp="#s3:l2">versaecken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Geest Godt allen u ziel en <rhyme label="a" type="m">hart</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Na Godt buyght, wil, leden, en <rhyme label="b" type="f">sinnen</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Denckt dagelijcx Jesus doodt en <rhyme label="a" type="m" corresp="#s4:l1">smart</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Uw' lusten quaet, moet al <rhyme label="b" type="f" corresp="#s4:l2">verwinnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Houdt reyn u ziel altijdt en <rhyme label="a" type="m">wit</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">U suyverheyt laet noyt <rhyme label="b" type="f">berooven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">U naesten helpt van u <rhyme label="a" type="m" corresp="#s5:l1">besit</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">In deughden noyt moet ghy <rhyme label="b" type="f" corresp="#s5:l2">verdooven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Denckt op den Hemel, doodt en <rhyme label="a" type="m">Hel</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En 't Oordeel Godts wilt niet <rhyme label="b" type="f">vergeten</rhyme></l>
        <l id="s6:l3" met="4" type="-+">U Oversten weest noyt <rhyme label="a" type="m" corresp="#s6:l1">rebel</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Sijn vermaen acht veel meer als <rhyme label="b" type="f" corresp="#s6:l2">eten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Eerbiedig en door 't biechten <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Na 't lijden Jesu <rhyme label="b" type="f">mediteren</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Met dorstigh hart, hoopt na't <rhyme label="a" type="m" corresp="#s7:l1">Fonteyn</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Van 't eyge bloet en vleesch des <rhyme label="b" type="f" corresp="#s7:l2">Heeren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Na Godt Woort wenst meer, als na <rhyme label="a" type="m">spijs</rhyme></l>
        <l id="s8:l2" met="4" type="-+">U Cell, en Huys, wilt niet <rhyme label="b" type="f">verlaten</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Leert altijdt: Weest noyt eyge <rhyme label="a" type="m" corresp="#s8:l1">wijs</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Uw' eer verliest ghy op de <rhyme label="b" type="f" corresp="#s8:l2">straten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Buyght u heel na een anders <rhyme label="a" type="m">sin</rhyme>.</l>
        <l id="s9:l2" met="4" type="-+">Volght de Heylige sonder <rhyme label="b" type="f">klagen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Uyt hare deughden soeckt <rhyme label="a" type="m" corresp="#s9:l1">gewin</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Her-vat u propoost alle <rhyme label="b" type="f" corresp="#s9:l2">dagen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Eyghe roem niet acht, soeck geen <rhyme label="a" type="m">lof</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Curieusheyt schout, en sulcx t' <rhyme label="b" type="f">hooren</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">'t Hart laet rusten in 't Hemels <rhyme label="a" type="m" corresp="#s10:l1">Hof</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Geen tijdt, onnut, laet gaen <rhyme label="b" type="f" corresp="#s10:l2">verloren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Schouthoogheyt, achterklap en <rhyme label="a" type="m">eer</rhyme>.</l>
        <l id="s11:l2" met="4" type="-+">In Godt troost soeckt; niet in de <rhyme label="b" type="f">Menschen</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">Bemoeyt uw' niet met vrienden <rhyme label="a" type="m" corresp="#s11:l1">seer</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Wat Godt doet seght: ick heb mijn <rhyme label="b" type="f" corresp="#s11:l2">wenschen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">In 't spreken denckt, al wat ghy <rhyme label="a" type="m">spreeckt</rhyme>.</l>
        <l id="s12:l2" met="4" type="-+">Sonden groot, ende kleyn, wilt <rhyme label="b" type="f">mijden</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">U goet propoost vol doet, noyt <rhyme label="a" type="m" corresp="#s12:l1">breeckt</rhyme>.</l>
        <l id="s12:l4" met="4" type="-+">Mediteert, voeght na Jesus <rhyme label="b" type="f" corresp="#s12:l2">tijden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Eerbaerheyt, en <rhyme label="a" type="m">stil-swijgentheyt</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Mindt. Oeffent u in alle <rhyme label="b" type="f">deughden</rhyme>.</l>
        <l id="s13:l3" met="4" type="-+">U, en anders sonden <rhyme label="a" type="m" corresp="#s13:l1">beschreydt</rhyme>.</l>
        <l id="s13:l4" met="4" type="-+">Lijden, hoe swaer, acht meer als <rhyme label="b" type="f" corresp="#s13:l2">vreughden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Tot sterven meer, als 't leven <rhyme label="a" type="m">hoopt</rhyme>:</l>
        <l id="s14:l2" met="4" type="-+">Neemt noyt schandael, geeft goet <rhyme label="b" type="f">exempel</rhyme>.</l>
        <l id="s14:l3" met="4" type="-+">Na 't vasten meer, als 't eten <rhyme label="a" type="m" corresp="#s14:l1">loopt</rhyme>.</l>
        <l id="s14:l4" met="4" type="-+">Mindt Godts Autaer, ende sijn <rhyme label="b" type="f" corresp="#s14:l2">Tempel</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Hoopt en wenst soo na de <rhyme label="a" type="m">Mis</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Als Ruth, om schooven te <rhyme label="b" type="f">vergaren</rhyme>.</l>
        <l id="s15:l3" met="4" type="-+">Deught, aflaet mint als 't nat de <rhyme label="a" type="m" corresp="#s15:l1">Vis</rhyme>.</l>
        <l id="s15:l4" met="4" type="-+">Doet meer om deught, als goet te <rhyme label="b" type="f" corresp="#s15:l2">garen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">In alles soeckt Godts lof en <rhyme label="a" type="m">eer</rhyme>.</l>
        <l id="s16:l2" met="4" type="-+">Weest vroom, verduldigh in u <rhyme label="b" type="f">pijnen</rhyme>.</l>
        <l id="s16:l3" met="4" type="-+">Met de Schepsels Godts looft den <rhyme label="a" type="m" corresp="#s16:l1">Heer</rhyme>.</l>
        <l id="s16:l4" met="4" type="-+">Weest veel beter als is u <rhyme label="b" type="f" corresp="#s16:l2">schijnen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Eer ghy u begeeft tot de <rhyme label="a" type="m">rust</rhyme>;</l>
        <l id="s17:l2" met="4" type="-+">U conscienti wilt onder <rhyme label="b" type="f">soecken</rhyme>.</l>
        <l id="s17:l3" met="4" type="-+">Dwinght, en windt al 't vleesch sijne <rhyme label="a" type="m" corresp="#s17:l1">lust</rhyme>.</l>
        <l id="s17:l4" met="4" type="-+">Leest dagelijcks van Kempis <rhyme label="b" type="f" corresp="#s17:l2">Boecken</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Rouwig niet zijt, al valt 't u <rhyme label="a" type="m">suer</rhyme>.</l>
        <l id="s18:l2" met="4" type="-+">Een anders deughden wilt na <rhyme label="b" type="f">trachten</rhyme>.</l>
        <l id="s18:l3" met="4" type="-+">Strijdt vroom, en wint u qua <rhyme label="a" type="m" corresp="#s18:l1">natuer</rhyme>.</l>
        <l id="s18:l4" met="4" type="-+">In 't slapen maeckt geen lange <rhyme label="b" type="f" corresp="#s18:l2">nachten</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">U Vleysch is bros, niet min u <rhyme label="a" type="m">Geest</rhyme>:</l>
        <l id="s19:l2" met="4" type="-+">Op u selven, wilt noyt <rhyme label="b" type="f">betrouwen</rhyme>.</l>
        <l id="s19:l3" met="4" type="-+">U Vleysch, Satan, en werelt <rhyme label="a" type="m" corresp="#s19:l1">vreest</rhyme>;</l>
        <l id="s19:l4" met="4" type="-+">Om de wereldt heel wilt niet <rhyme label="b" type="f" corresp="#s19:l2">trouwen</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Leeft na Godts raedt ende <rhyme label="a" type="m">gebodt</rhyme>.</l>
        <l id="s20:l2" met="4" type="-+">Weest innigh in 't bidden en <rhyme label="b" type="f">lesen</rhyme>.</l>
        <l id="s20:l3" met="4" type="-+">Bidt voor die, u achten als <rhyme label="a" type="m" corresp="#s20:l1">sot</rhyme>.</l>
        <l id="s20:l4" met="4" type="-+">Begeerelijck, en wilt niet <rhyme label="b" type="f" corresp="#s20:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Eet sober, dranck niet veel in <rhyme label="a" type="m">haelt</rhyme>.</l>
        <l id="s21:l2" met="4" type="-+">Die niet vergeet door uw' goe <rhyme label="b" type="f">wercken</rhyme>,</l>
        <l id="s21:l3" met="4" type="-+">Die in 't Vagevyer zijn <rhyme label="a" type="m" corresp="#s21:l1">gedaelt</rhyme>.</l>
        <l id="s21:l4" met="4" type="-+">Weest devoot, statigh in de <rhyme label="b" type="f" corresp="#s21:l2">Kercken</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Vreest altijdt, hoe heyligh ghy <rhyme label="a" type="m">zijt</rhyme>.</l>
        <l id="s22:l2" met="4" type="-+">Soeckt 't Volck tot g'loof, en Godt te <rhyme label="b" type="f">brenghen</rhyme>.</l>
        <l id="s22:l3" met="4" type="-+">Voor Godt, 't geloof, en Maeghdom <rhyme label="a" type="m" corresp="#s22:l1">strijdt</rhyme>.</l>
        <l id="s22:l4" met="4" type="-+">Met Maeghden goet, wilt u <rhyme label="b" type="f" corresp="#s22:l2">vermengen</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Een nacht niet zijt, in sond', of <rhyme label="a" type="m">haet</rhyme>.</l>
        <l id="s23:l2" met="4" type="-+">Leest alle dagen u <rhyme label="b" type="f">getijden</rhyme>.</l>
        <l id="s23:l3" met="4" type="-+">Spreeckt uwe geen anders <rhyme label="a" type="m" corresp="#s23:l1">misdaet</rhyme>.</l>
        <l id="s23:l4" met="4" type="-+">Droevige met troost wilt <rhyme label="b" type="f" corresp="#s23:l2">verblijden</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">NOyt tot de doodt zijt <rhyme label="a" type="m">onbereyt</rhyme>;</l>
        <l id="s24:l2" met="4" type="-+">Weest arm van Geest; milt, blijd in 't <rhyme label="b" type="f">geven</rhyme>.</l>
        <l id="s24:l3" met="4" type="-+">Dit doende, als ghy van hier <rhyme label="a" type="m" corresp="#s24:l1">scheydt</rhyme>,</l>
        <l id="s24:l4" met="4" type="-+">Sult hooren; Komt in 't eeuwigh <rhyme label="b" type="f" corresp="#s24:l2">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
