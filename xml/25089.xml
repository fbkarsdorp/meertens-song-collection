<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>25089</id>
    <date>
      <year-start>1500</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag translation="mystical song">mystiek lied</tag>
    </tags>
    <melody/>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Die dorstich sijt draecht <rhyme label="a" type="f">bliden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">moet. Men biet v <rhyme label="b" type="m">drincken</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Vut leuende vijf <rhyme label="a" type="f" corresp="#s1:l1">riuieren</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Wilt men v <rhyme label="b" type="m" corresp="#s1:l2">scincken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hi riep met luder <rhyme label="a" type="f">stemmen</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Die dorst die come tot <rhyme label="b" type="m">my</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Mijn herte es v <rhyme label="a" type="f" corresp="#s2:l1">ontploken</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Ic wille v maken <rhyme label="b" type="m" corresp="#s2:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ic vloye al vol <rhyme label="a" type="f">genaden</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Waer om ontloepti <rhyme label="b" type="m">my</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Al sidi vol <rhyme label="a" type="f" corresp="#s3:l1">mesdaden</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Ic stonde v gerne <rhyme label="b" type="m" corresp="#s3:l2">bi</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Comt hier ic ben v <rhyme label="a" type="f">eygen</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Drinct vter volder <rhyme label="b" type="m">vloet</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Ic wille my tuweert <rhyme label="a" type="f" corresp="#s4:l1">neygen</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">En scincken mijn herte <rhyme label="b" type="m" corresp="#s4:l2">bloet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mijn aderen sijn al <rhyme label="a" type="f">open</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">Si vloeyen edelen <rhyme label="b" type="m">wijn</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Drinct alle vut desen <rhyme label="a" type="f" corresp="#s5:l1">nappe</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Hi en mocht niet edelder <rhyme label="b" type="m" corresp="#s5:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Mijn arme sijn v <rhyme label="a" type="f">ontploken</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Ic wachte oft ghi yet <rhyme label="b" type="m">comt</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Met openen <rhyme label="a" type="f" corresp="#s6:l1">banieren</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Biedic v minen <rhyme label="b" type="m" corresp="#s6:l2">mont</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hi en conste niet langer <rhyme label="a" type="f">geliden</rhyme>.</l>
        <l id="s7:l2" met="3" type="-+">Van minnen vloeide hi <rhyme label="b" type="m">al</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Hi nam v menscheit <rhyme label="a" type="f" corresp="#s7:l1">ane</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Ende liet den ingelen <rhyme label="b" type="m" corresp="#s7:l2">val</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hi beete tot hier <rhyme label="a" type="f">neder</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">Een vrouwe hadden <rhyme label="b" type="m">gevaen</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Hi makese <rhyme label="a" type="f" corresp="#s8:l1">coninghinne</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Ende woude te haren wille <rhyme label="b" type="m" corresp="#s8:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Bewijst o edel <rhyme label="a" type="f">vrouwe</rhyme>.</l>
        <l id="s9:l2" met="3" type="-+">Dat ghi ons moeder <rhyme label="b" type="m">sijt</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Leit ons nv vor den <rhyme label="a" type="f" corresp="#s9:l1">heere</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Ghi sijt <rhyme label="b" type="m" corresp="#s9:l2">gebenedijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dat vaderlike <rhyme label="a" type="f">vloeyen</rhyme>.</l>
        <l id="s10:l2" met="3" type="-+">In meechdeliker <rhyme label="b" type="m">wijs</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">Hebdi ons neder <rhyme label="a" type="f" corresp="#s10:l1">getrocken</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Der hoger genaden <rhyme label="b" type="m" corresp="#s10:l2">rijs</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ghi sijt soe ouer <rhyme label="a" type="f">edel</rhyme>.</l>
        <l id="s11:l2" met="3" type="-+">Ende hebt den meesten <rhyme label="b" type="m">prijs</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">Ende ooc sonder <rhyme label="a" type="f" corresp="#s11:l1">gelike</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Int hemelsche <rhyme label="b" type="m" corresp="#s11:l2">paradijs</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">V scoen genadege <rhyme label="a" type="f">ogen</rhyme>.</l>
        <l id="s12:l2" met="3" type="-+">Slaet neder in dit <rhyme label="b" type="m">dal</rhyme>.</l>
        <l id="s12:l3" met="3" type="-+">Vwer edelder milder <rhyme label="a" type="f" corresp="#s12:l1">herten</rhyme>.</l>
        <l id="s12:l4" met="3" type="-+">Bliue ons couent beuolen <rhyme label="b" type="m" corresp="#s12:l2">al</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
