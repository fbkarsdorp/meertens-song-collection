<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>179643</id>
    <date>
      <year-start>1767</year-start>
      <year-end>1767</year-end>
    </date>
    <tags/>
    <melody>Wie heeft ooit groter gek gezien</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAt groot vermaek geniet ik <rhyme label="a" type="m">weer</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Nu ik myn <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Aen deze <rhyme label="b" type="m" corresp="#s1:l2">Kust</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Mag vinden als wel <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">’k Vind’ schoon ik zwerf van strand tot <rhyme label="c" type="m">strand</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Geen schoonder ooit na myn <rhyme label="c" type="m" corresp="#s1:l5">Verstand</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Dan uw ô Roemryk <rhyme label="c" type="m" corresp="#s1:l5">Vaderland</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Dat ik met hard en <rhyme label="d" type="m">zin</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Het aldermeest <rhyme label="d" type="m" corresp="#s1:l8">bemin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">’t Scheeps leven baerd wel geen <rhyme label="a" type="m">verdriet</rhyme>!</l>
        <l id="s2:l2" met="2" type="-+">Maer ik raed een <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Die anders <rhyme label="b" type="m" corresp="#s2:l2">kan</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">’t Onnodig leven <rhyme label="a" type="m" corresp="#s2:l1">niet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Men is aen Land zyn eygen <rhyme label="c" type="m">Heer</rhyme>;</l>
        <l id="s2:l6" met="4" type="-+">Maer niet ter Zee, daer keer op <rhyme label="c" type="m" corresp="#s2:l5">keer</rhyme></l>
        <l id="s2:l7" met="4" type="-+">’t Matroosje word getouwt als <rhyme label="c" type="m" corresp="#s2:l5">leer</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Schoon in de zwaerste <rhyme label="d" type="m">nood</rhyme>!</l>
        <l id="s2:l9" met="3" type="-+">Op d’oever van de <rhyme label="d" type="m" corresp="#s2:l8">dood</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zal ik dan nu niet zyn <rhyme label="a" type="m">Verheugd</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">daer ’t lot zy <rhyme label="b" type="m">dank</rhyme>:</l>
        <l id="s3:l3" met="2" type="-+">Geen Klip of <rhyme label="b" type="m" corresp="#s3:l2">Bank</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Kan hinderen myn <rhyme label="a" type="m" corresp="#s3:l1">Vreugd</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">’k Denk tans om Zylen, Mars nog <rhyme label="c" type="m">Wand</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Ik schep op Fok of Raa <rhyme label="c" type="m" corresp="#s3:l5">Verstand</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">’t Zal tyds genoeg zyn als ik ’t <rhyme label="c" type="m" corresp="#s3:l5">Land</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Weer uit gebrek van <rhyme label="d" type="m">Brood</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Verlaten moet uit <rhyme label="d" type="m" corresp="#s3:l8">nood</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hier zal myn geen Scheeps <rhyme label="a" type="m">Officier</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">In ’t zwetzen <rhyme label="b" type="m">kloek</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Met vloek op <rhyme label="b" type="m" corresp="#s4:l2">vloek</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Na boven jagen <rhyme label="a" type="m" corresp="#s4:l1">hier</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ik zal door geen berooyde <rhyme label="c" type="m">Gek</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Die vast loopt razen op het <rhyme label="c" type="m" corresp="#s4:l5">Dek</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Geslagen worden voor myn <rhyme label="c" type="m" corresp="#s4:l5">Bek</rhyme>;</l>
        <l id="s4:l8" met="3" type="-+">’k Ben hier zoo goed als <rhyme label="d" type="m">hy</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">En even vrank en <rhyme label="d" type="m" corresp="#s4:l8">vry</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">k Ga dan na myn Vrienden <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Om by de <rhyme label="b" type="m">Wyn</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Met haer te <rhyme label="b" type="m" corresp="#s5:l2">zyn</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Verheugd en wel te <rhyme label="a" type="m" corresp="#s5:l1">moe</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Een Welkomst dronkje mag geen <rhyme label="c" type="m">quaed</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En word ook nimmermeer <rhyme label="c" type="m" corresp="#s5:l5">versmaed</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Terwyl men ’t Vrolyk binnen <rhyme label="c" type="m" corresp="#s5:l5">slaet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">De Vreugd voegd by ’t <rhyme label="d" type="m">Geluk</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Na zwarigheid en <rhyme label="d" type="m" corresp="#s5:l8">druk</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
