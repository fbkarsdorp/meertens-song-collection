    <tags/>
    <melody>Geef mij te drinken naar mijn dorst</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Vaeckt op, waert op seer <rhyme label="a" type="m">diligent</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Int nieuwe jaer wilt vrolic <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Rijst wt den slaep der sonden <rhyme label="a" type="m" corresp="#s1:l1">blent</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Het licht des hemels is <rhyme label="b" type="f" corresp="#s1:l2">opgheresen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Van eender Ioncvrouwe alsoo wy <rhyme label="b" type="f" corresp="#s1:l2">lesen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Is ons gheboren een Coninck <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Hel, Duyvel, Doot, elck moet hem <rhyme label="b" type="f" corresp="#s1:l2">vresen</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Sijn naem gepresen int nieuwe <rhyme label="c" type="m" corresp="#s1:l6">jaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Doen quamen de Enghelen inder <rhyme label="a" type="m">nacht</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die herders doe die bootschap <rhyme label="b" type="f">brachten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Doe liepen sy al met der <rhyme label="a" type="m" corresp="#s2:l1">macht</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Naer Bethelem dat sy <rhyme label="b" type="f" corresp="#s2:l2">vermochten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die wijse by malcanderen <rhyme label="b" type="f" corresp="#s2:l2">brachten</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Wt den Oosten een sterre <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Die dese drie Coningen te Bethelem <rhyme label="b" type="f" corresp="#s2:l2">brachten</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Sy Iesum sochten int nieuwe <rhyme label="c" type="m" corresp="#s2:l6">jaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het waren die couste nachten <rhyme label="a" type="m">stuer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Diemen ter werelt oyt ginck <rhyme label="b" type="f">gemoeten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">In een ouden vervallen <rhyme label="a" type="m" corresp="#s3:l1">schuer</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Tusschen twee Beesten onder de <rhyme label="b" type="f" corresp="#s3:l2">voeten</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Daer lach dat kindeken met <rhyme label="b" type="f" corresp="#s3:l2">onversoeten</rhyme></l>
        <l id="s3:l6" met="4" type="-+">In armoede en ellende <rhyme label="c" type="m">swaer</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Maer die schaepherders sy Iesum <rhyme label="b" type="f" corresp="#s3:l2">groeten</rhyme></l>
        <l id="s3:l8" met="4" type="-+">V sonden boeten int nieuwe <rhyme label="c" type="m" corresp="#s3:l6">jaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wilt ghy aenhooren des Heeren <rhyme label="a" type="m">stem</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Volcht die Herders met <rhyme label="b" type="f">neersticheden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wilt Iesum soecken te <rhyme label="a" type="m" corresp="#s4:l1">Bethelem</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als dese drie Coningen <rhyme label="b" type="f" corresp="#s4:l2">deden</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Den achsten wert Christus <rhyme label="b" type="f" corresp="#s4:l2">besneden</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Hy bracht in vreden ons <rhyme label="c" type="m">allegaer</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Ghy mans en vrouwen in dorpen in <rhyme label="b" type="f" corresp="#s4:l2">steden</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Wilt hem aenbeden int nieuwe <rhyme label="c" type="m" corresp="#s4:l6">jaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy is gedwaelt wt sijns vaders <rhyme label="a" type="m">schoot</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En nv ter werelt in groot <rhyme label="b" type="f">ellende</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hy sterf voor ons den bitteren <rhyme label="a" type="m" corresp="#s5:l1">doot</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Om ons te brengen wt vyants <rhyme label="b" type="f" corresp="#s5:l2">benden</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Dus laet ons al tot Christus <rhyme label="b" type="f" corresp="#s5:l2">wenden</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En houden sijn gheboden <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Sijnen geest der waerheyt aen allen <rhyme label="b" type="f" corresp="#s5:l2">enden</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Sal hy ons senden int nieuwe <rhyme label="c" type="m" corresp="#s5:l6">Iaer</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Oorlof broeders laet swerelts <rhyme label="a" type="m">gemack</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Siet hoe de menschen nu <rhyme label="b" type="f">braggeren</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Denct op dat woort dat Christus <rhyme label="a" type="m" corresp="#s6:l1">sprack</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Die hem verheft sa lick <rhyme label="b" type="f" corresp="#s6:l2">verneten</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Tot inden afgront <rhyme label="b" type="f" corresp="#s6:l2">persequeren</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Oorlof mijn Broeders <rhyme label="c" type="m">algaer</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Hout op van sonden wilt u <rhyme label="b" type="f" corresp="#s6:l2">bekeeren</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Tis tâ€™uwer eeren int nieuwe <rhyme label="c" type="m" corresp="#s6:l6">Iaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
