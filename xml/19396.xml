    <melody>Een ridder en een meisje jong</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wyldy wesen een oorloochs <rhyme label="a" type="m">man</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Een ridder een camper des <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Soo laet v teekenen doet wapen <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Stryden en vechten moet ghy <rhyme label="b" type="f" corresp="#s1:l2">leeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want wy en hebben hier gheenen <rhyme label="a" type="m">strijt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Teghen ons vlees en bloet <rhyme label="b" type="f">alleene</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Maer teghen die hoocheyt des werelts <rhyme label="a" type="m" corresp="#s2:l1">wijt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Moeten wy vechten int <rhyme label="b" type="f" corresp="#s2:l2">ghemeene</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Teghen Keysers Coninghen en Uorsten <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Al die de duysterheyt <rhyme label="b" type="f">regieren</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Moeten wy vechten tot inde <rhyme label="a" type="m" corresp="#s3:l1">doot</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Oprechten vroom Christus <rhyme label="b" type="f" corresp="#s3:l2">banieren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Teghen die schalcheyt quaet also <rhyme label="a" type="m">fenijn</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Der gheesten die inde locht <rhyme label="b" type="f">wercken</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Moeten wy oock wel ghewapent <rhyme label="a" type="m" corresp="#s4:l1">zijn</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Haer loosheyt en bedroch <rhyme label="b" type="f" corresp="#s4:l2">aenmercken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sy sullen teekens en wonder <rhyme label="a" type="m">doen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En door een schijn der waerheyt <rhyme label="b" type="f">lieghen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Die haer niet vast aen Christum en <rhyme label="a" type="m" corresp="#s5:l1">hoen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Die sullen si alle <rhyme label="b" type="f" corresp="#s5:l2">bedrieghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer hopen moeten wy met goet <rhyme label="a" type="m">verdrach</rhyme></l>
        <l id="s6:l2" met="4" type="-+">En laeten onse quade <rhyme label="b" type="f">manieren</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Op dat ons Godt in den quaden <rhyme label="a" type="m" corresp="#s6:l1">dach</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Door sinen gheest mach wel <rhyme label="b" type="f" corresp="#s6:l2">bestieren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">In een lichaem der sonden <rhyme label="a" type="m">subiect</rhyme></l>
        <l id="s7:l2" met="4" type="-+">En woont niet Gods gheest vry van <rhyme label="b" type="f">ghescille</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Noch in gheen siele hy en <rhyme label="a" type="m" corresp="#s7:l1">treet</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Onghehoorsaem ende quaet van <rhyme label="b" type="f" corresp="#s7:l2">wille</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer die Christum soecken vroech ende <rhyme label="a" type="m">spay</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Om dienen sonder <rhyme label="b" type="f">cesseren</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Sal hy ontfanghen, en vryen van <rhyme label="a" type="m" corresp="#s8:l1">schay</rhyme></l>
        <l id="s8:l4" met="4" type="-+">In dien si hem niet en <rhyme label="b" type="f" corresp="#s8:l2">tempteren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Aendoen sal hy haer zijn wapen <rhyme label="a" type="m">sterck</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Waer mede hijt al heeft <rhyme label="b" type="f">verwonnen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Ende moet gheuen, want tis zijn <rhyme label="a" type="m" corresp="#s9:l1">werck</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Uictorie sal hy haer <rhyme label="b" type="f" corresp="#s9:l2">ionnen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Staet cloeck weest vroom in al v <rhyme label="a" type="m">gheuecht</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Omgort v lendenen metter <rhyme label="b" type="f">waerheyt</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Doet aen dat pantsier, goet en <rhyme label="a" type="m" corresp="#s10:l1">oprecht</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Die gherechticheyt al sonder <rhyme label="b" type="f" corresp="#s10:l2">swaerheyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En weest gheschoyt aen v voeten <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Met Deuangelium des <rhyme label="b" type="f">vreden</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Om te loopen als een Bode <rhyme label="a" type="m" corresp="#s11:l1">snel</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Bootschappen Gods <rhyme label="b" type="f" corresp="#s11:l2">ghenadicheden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Neempt dat ghelooue tot eenen <rhyme label="a" type="m">schilt</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Teghen die duuel <rhyme label="b" type="f">onmanierich</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Waer me ghebluscht wort, en <rhyme label="a" type="m" corresp="#s12:l1">ghestilt</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Alle zijn scherpe pijlen <rhyme label="b" type="f" corresp="#s12:l2">vierich</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Den helm der salicheyt, die wilt noch <rhyme label="a" type="m">voort</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Oock cloeckelijck op v hooft <rhyme label="b" type="f">stellen</rhyme></l>
        <l id="s13:l3" met="4" type="-+">En grijpt dat sweert des geests, dwelc es Gods <rhyme label="a" type="m" corresp="#s13:l1">woort</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Om v vyanden mede te <rhyme label="b" type="f" corresp="#s13:l2">vellen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Draecht Cristus teecken dat roode <rhyme label="a" type="m">cruys</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Treeckt willich wt met hem te <rhyme label="b" type="f">velde</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Lijdt smaet, druck, noot, anxt, doot, <rhyme label="a" type="m" corresp="#s14:l1">confuys</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Neempt soo zijn rijck in met <rhyme label="b" type="f" corresp="#s14:l2">ghewelde</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Loopt vroom ghemoet niet <rhyme label="a" type="m">verduldich</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Lijdsamich sonder <rhyme label="b" type="f">verlanghen</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Inden stryt die v Godt te voren <rhyme label="a" type="m" corresp="#s15:l1">leyt</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Danct loft prijst hem met blyde <rhyme label="b" type="f" corresp="#s15:l2">sanghen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Wilt roepen smeecken bidt inden <rhyme label="a" type="m">gheest</rhyme></l>
        <l id="s16:l2" met="4" type="-+">En houdt goede waeck tot allen <rhyme label="b" type="f">stonden</rhyme></l>
        <l id="s16:l3" met="4" type="-+">En vlucht om druck lijden noch <rhyme label="a" type="m" corresp="#s16:l1">tempeest</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Een oprecht Ridder wort ghy <rhyme label="b" type="f" corresp="#s16:l2">beuonden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Die wt desen stryde wijcken <rhyme label="a" type="m">al</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Die en sullen God niet <rhyme label="b" type="f">behaghen</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Maer die volstantich vechten <rhyme label="a" type="m" corresp="#s17:l1">sal</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Tot in die doot sonder <rhyme label="b" type="f" corresp="#s17:l2">versaghen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Afwasschen salmen zijn tranen <rhyme label="a" type="m">swaer</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Sijn lijden dat wort al <rhyme label="b" type="f">ghenesen</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Blinckende cleederen wit en <rhyme label="a" type="m" corresp="#s18:l1">claer</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Sal hy aendoen en blyde <rhyme label="b" type="f" corresp="#s18:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Een croone met grooter <rhyme label="a" type="m">melodije</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Wilt Christus op zijn hooft noch <rhyme label="b" type="f">gheuen</rhyme></l>
        <l id="s19:l3" met="4" type="-+">Dat wort sinen loon en zijn <rhyme label="a" type="m" corresp="#s19:l1">soudije</rhyme></l>
        <l id="s19:l4" met="4" type="-+">En met Christus sal hy eewich <rhyme label="b" type="f" corresp="#s19:l2">leuen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
