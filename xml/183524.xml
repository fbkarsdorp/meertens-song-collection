<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>183524</id>
    <date>
      <year-start>1789</year-start>
      <year-end>1789</year-end>
    </date>
    <tags/>
    <melody>Al is ons prinsje nog zo klein</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="6" type="+-">Een Ridder ging ter Boere - jagt, ha, <rhyme label="a" type="m">ha</rhyme>,</l>
        <l id="s1:l2" met="6" type="+-">Maar ziet hy heeft niets thuis gebragt, ha, <rhyme label="a" type="m" corresp="#s1:l1">ha</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">De Boeren die waren te loos - te <rhyme label="b" type="m">plat</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Zy riepen, 'er uit jou dit en jou <rhyme label="b" type="m" corresp="#s1:l3">dat</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Ha, ha, van <rhyme label="a" type="m" corresp="#s1:l1">fal-de-ra-la</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="6" type="+-">De Ridder die ging by Moeder <rhyme label="a" type="m">Nyn</rhyme>,</l>
        <l id="s2:l2" met="6" type="+-">Hy schonk in 't rond de koele <rhyme label="a" type="m" corresp="#s2:l1">Wyn</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'t Is Willem's Jaardag, kom drink maar <rhyme label="b" type="m">mee</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Maar al de Boeren verd... den <rhyme label="b" type="m" corresp="#s2:l3">hoez√©e</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Ha, ha, van <rhyme label="a" type="m" corresp="#s2:l1">fal-de-ra-la</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="6" type="+-">De Ridder zei, Willem die is zo <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s3:l2" met="6" type="+-">Hy is van het Nassouwse <rhyme label="a" type="m" corresp="#s3:l1">Bloed</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">De Roeren die riepen, dat voelen wy <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Daarom gaat het, God beter' 't, ons Land zo <rhyme label="b" type="m" corresp="#s3:l3">wel</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Ha, ha, van <rhyme label="a" type="m" corresp="#s3:l1">fal-de-ra-la</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="6" type="+-">De Ridder zag treurig op zyn <rhyme label="a" type="m">neus</rhyme>,</l>
        <l id="s4:l2" met="6" type="+-">Hy had zo gaarn een Oranje <rhyme label="a" type="m" corresp="#s4:l1">Leus</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maar de Boeren die riepen, kom schrobje <rhyme label="b" type="m">baas</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Verwagt hier geen vreugde van Sinter <rhyme label="b" type="m" corresp="#s4:l3">Klaas</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Ha, ha, van <rhyme label="a" type="m" corresp="#s4:l1">fal-de-ra-la</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
