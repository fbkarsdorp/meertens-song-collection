  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'t Heil der menschheid te <rhyme label="a" type="f">bewerken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Haar in stilte bij te <rhyme label="b" type="m">staan</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Zonder praal of iedlen <rhyme label="b" type="m" corresp="#s1:l2">waan</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">'t Zwakke broederhart te <rhyme label="a" type="f" corresp="#s1:l1">sterken</rhyme> -</l>
        <l id="s1:l5" met="4" type="+-">Dit toont onze leer u <rhyme label="b" type="m" corresp="#s1:l2">aan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Licht der wijsheid te zien <rhyme label="a" type="f">glimmen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Zelfs in hare <rhyme label="b" type="m">donkerheid</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">En met geestdrift en <rhyme label="b" type="m" corresp="#s2:l2">beleid</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Bare rotzen te <rhyme label="a" type="f" corresp="#s2:l1">beklimmen</rhyme> -</l>
        <l id="s2:l5" met="4" type="+-">Dit is haar <rhyme label="b" type="m" corresp="#s2:l2">verhevenheid</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Van den schijn zich los te <rhyme label="a" type="f">wringen</rhyme>;</l>
        <l id="s3:l2" met="4" type="+-">En met de oogen van 't <rhyme label="b" type="m">gemoed</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Bij een zuivren <rhyme label="b" type="m" corresp="#s3:l2">zonnengleed</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Diep in 's menschen geest te <rhyme label="a" type="f" corresp="#s3:l1">dringen</rhyme> -</l>
        <l id="s3:l5" met="4" type="+-">Is het geen u leiden <rhyme label="b" type="m" corresp="#s3:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Lijdend menschdom eischt uw <rhyme label="a" type="f">zorgen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Maar wanneer gij hulp <rhyme label="b" type="m">verleent</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Waar men stille tranen <rhyme label="b" type="m" corresp="#s4:l2">weent</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Houdt uw weidaad dan <rhyme label="a" type="f" corresp="#s4:l1">verborgen</rhyme> -</l>
        <l id="s4:l5" met="4" type="+-">Tot dit doel zijn wij <rhyme label="b" type="m" corresp="#s4:l2">verÃ«end</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als het misdrijf, als de <rhyme label="a" type="f">logen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Deugd of waarheid <rhyme label="b" type="m">overmant</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En zijn oproerstandaard <rhyme label="b" type="m" corresp="#s5:l2">plant</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Moedig dan ten strijd <rhyme label="a" type="f" corresp="#s5:l1">gevlogen</rhyme>! -</l>
        <l id="s5:l5" met="4" type="+-">Dit eischt de Orde van uw <rhyme label="b" type="m" corresp="#s5:l2">hand</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als een drom van <rhyme label="a" type="f">huichelaren</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Met zijn donker <rhyme label="b" type="m">nachtgebroed</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">U op uwen weg <rhyme label="b" type="m" corresp="#s6:l2">ontmoet</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Broeder, vrees dan geen <rhyme label="a" type="f" corresp="#s6:l1">gevaren</rhyme> -</l>
        <l id="s6:l5" met="4" type="+-">Toon ons dan uw' <rhyme label="b" type="m" corresp="#s6:l2">heidenmoed</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Vrede is 't hoofddoel onzer <rhyme label="a" type="f">stigting</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Vrede gloeit op haar <rhyme label="b" type="m">gelaat</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Is het merk van haar <rhyme label="b" type="m" corresp="#s7:l2">gewaad</rhyme>;</l>
        <l id="s7:l4" met="4" type="+-">Maar den vijand der <rhyme label="a" type="f" corresp="#s7:l1">verlichting</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Zweert ze een' onverzoenbren <rhyme label="b" type="m" corresp="#s7:l2">haat</rhyme>.</l>
      </lg>
    </lg>
  </text>
