    <tags>
      <tag translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Aanhoor toch mijn geklaag gij ruiters</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOort toe kersten <rhyme label="a" type="f">gemeyne</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hoort toe na Gods <rhyme label="b" type="m">vermaen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ende wilt met herten <rhyme label="a" type="f" corresp="#s1:l1">reyne</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van uwen sonden af <rhyme label="b" type="m" corresp="#s1:l2">staen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ende dienen <rhyme label="c" type="m">God</rhyme></l>
        <l id="s1:l6" met="3" type="-+">En houden sijn <rhyme label="c" type="m" corresp="#s1:l5">ghebot</rhyme></l>
        <l id="s1:l7" met="3" type="-+">So suldy van hem troost <rhyme label="b" type="m" corresp="#s1:l2">ontfaen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Kent eerst dat in v <rhyme label="a" type="f">seluen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Niet en is dan <rhyme label="b" type="m">ghebreck</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Wilt ghi v herte om <rhyme label="a" type="f" corresp="#s2:l1">weluen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ghi en vint daer niet dan <rhyme label="b" type="m" corresp="#s2:l2">dreck</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ende alle <rhyme label="c" type="m">noot</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Die v sal stellen <rhyme label="c" type="m" corresp="#s2:l5">bloot</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Verdoemen in dat helsche <rhyme label="b" type="m" corresp="#s2:l2">peck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer wildy troost <rhyme label="a" type="f">verweruen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Keert weder wter <rhyme label="b" type="m">hel</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Aensiet dat bitter <rhyme label="a" type="f" corresp="#s3:l1">steruen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ende al dat swaer <rhyme label="b" type="m" corresp="#s3:l2">ghequel</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Het welc heer Iesus <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Wt grooter liefden <rhyme label="c" type="m" corresp="#s3:l5">soet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Leedt om uwer sonden <rhyme label="b" type="m" corresp="#s3:l2">wille</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Daer om gelooft met <rhyme label="a" type="f">herten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Met monde / en metter <rhyme label="b" type="m">daet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Dat Iesus alle v <rhyme label="a" type="f" corresp="#s4:l1">smerten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Afneme / ende al v <rhyme label="b" type="m" corresp="#s4:l2">quaet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Ende gheue v <rhyme label="c" type="m">gheheel</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sijns eewighen rijcx <rhyme label="c" type="m" corresp="#s4:l5">iuweel</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Doer God sijns vaders <rhyme label="b" type="m" corresp="#s4:l2">raet</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">So dat ghi nu recht moecht <rhyme label="a" type="f">segghen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Heer Iesu ghi sijt <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Ick wil v nu gaen <rhyme label="a" type="f" corresp="#s5:l1">leggen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Al voer ws vaders <rhyme label="b" type="m" corresp="#s5:l2">aenschijn</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Voer een groot <rhyme label="c" type="m">ransoen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Ende daer mede <rhyme label="c" type="m" corresp="#s5:l5">voldoen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Van alle mijn scult / ende vri <rhyme label="b" type="m" corresp="#s5:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dan so suldy wt <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dienen God sonder <rhyme label="b" type="m">bedwanc</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Den Heere met lijf ende <rhyme label="a" type="f" corresp="#s6:l1">sinnen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In alle v naesten <rhyme label="b" type="m" corresp="#s6:l2">cranck</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Voort gaende in alle <rhyme label="c" type="m">duecht</rhyme></l>
        <l id="s6:l6" met="3" type="-+">So veel als ghi <rhyme label="c" type="m" corresp="#s6:l5">vermuecht</rhyme></l>
        <l id="s6:l7" met="3" type="-+">God gheuende lof ende <rhyme label="b" type="m" corresp="#s6:l2">danck</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Met God sijnde te <rhyme label="a" type="f">vreden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In alle tghene dat hi v <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s7:l3" met="3" type="-+">In allen tide oft <rhyme label="a" type="f" corresp="#s7:l1">steden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Het si verdriet oft <rhyme label="b" type="m" corresp="#s7:l2">voerspoet</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Sijnde int herte <rhyme label="c" type="m">gherust</rhyme></l>
        <l id="s7:l6" met="3" type="-+">In Gods soete <rhyme label="c" type="m" corresp="#s7:l5">wellust</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Hem lidende in <rhyme label="b" type="m" corresp="#s7:l2">ootmoede</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
