  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">T'is tydt, <rhyme label="a" type="m">bereyt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Een hesp voor den <rhyme label="a" type="m" corresp="#s1:l1">on-beyt</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Een Kieck, oft <rhyme label="b" type="m">Hoen</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Moetet ons <rhyme label="b" type="m" corresp="#s1:l3">doen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Daer elck een homp <rhyme label="a" type="m" corresp="#s1:l1">af-sneyt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wy vechten aen den <rhyme label="c" type="m">dis</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Daer wat te schransen <rhyme label="c" type="m" corresp="#s1:l6">is</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Ey! laet ons stryden in het <rhyme label="d" type="m">velt</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Daer den hongher niet en <rhyme label="d" type="m" corresp="#s1:l8">quelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">'tIs noot, brenght <rhyme label="a" type="m">broot</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">In desen aen-val <rhyme label="a" type="m" corresp="#s2:l1">groot</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Acht, neghen, <rhyme label="b" type="m">pont</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Worsten, voor <rhyme label="b" type="m" corresp="#s2:l3">lont</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Soo stryden wy totter <rhyme label="a" type="m" corresp="#s2:l1">doot</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hanght aen den <rhyme label="c" type="m">bandelier</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Thien, oft twelf, snellen <rhyme label="c" type="m" corresp="#s2:l6">bier</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">En daer toe noch een volle <rhyme label="d" type="m">kruyck</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Om te vullen onsen <rhyme label="d" type="m" corresp="#s2:l8">buyck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Valt aen, wy <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Voor trommel d'aem-vat <rhyme label="a" type="m" corresp="#s3:l1">slaen</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Een <rhyme label="b" type="m">Haemelen-bout</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">In handen <rhyme label="b" type="m" corresp="#s3:l3">hout</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat sweerdt sal u wel <rhyme label="a" type="m" corresp="#s3:l1">staen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Een kassaert voor een <rhyme label="c" type="m">schilt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Kan dienen soo ghy <rhyme label="c" type="m" corresp="#s3:l6">wilt</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Neemt voor u roer, een fluyt vol <rhyme label="d" type="m">wyn</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">Laet die koghels, eyers <rhyme label="d" type="m" corresp="#s3:l8">zyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Den man, moet <rhyme label="a" type="m">dan</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dry-mael drincken een <rhyme label="a" type="m" corresp="#s4:l1">kan</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Die <rhyme label="b" type="m">Capiteyn</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Sal willen <rhyme label="b" type="m" corresp="#s4:l3">zyn</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Van allen dit <rhyme label="a" type="m" corresp="#s4:l1">ghespan</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Volght hem dan op het <rhyme label="c" type="m">spoor</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ghelyck hy ons doet <rhyme label="c" type="m" corresp="#s4:l6">voor</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Schinckt, ende drinckt, met vollen <rhyme label="d" type="m">vloet</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Want-men 'tkeel-gat smeren <rhyme label="d" type="m" corresp="#s4:l8">moet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Terstont, in't <rhyme label="a" type="m">ront</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Set een pot aen den <rhyme label="a" type="m" corresp="#s5:l1">mont</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Valt iemant <rhyme label="b" type="m">kranck</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Van stoel, oft <rhyme label="b" type="m" corresp="#s5:l3">banck</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Gheen scheut heeft hem <rhyme label="a" type="m" corresp="#s5:l1">ghewont</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Giet, ende suypt om <rhyme label="c" type="m">preys</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Bacchus, beloeft ons <rhyme label="c" type="m" corresp="#s5:l6">peys</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Als't soo sal al ghestreden <rhyme label="d" type="m">zyn</rhyme>,</l>
        <l id="s5:l9" met="4" type="+-">Sal in slaep den vrede <rhyme label="d" type="m" corresp="#s5:l8">zyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
