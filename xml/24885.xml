  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Egidius waer bestu <rhyme label="a" type="f">bleven</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Mi lanct na di gheselle <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Du coors die doot du liets mi <rhyme label="a" type="f" corresp="#s1:l1">tleven</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Dat was gheselscap goet ende <rhyme label="b" type="m" corresp="#s1:l2">fijn</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Het sceen teen moeste ghestorven <rhyme label="b" type="m" corresp="#s1:l2">sijn</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Nu bestu in den troon <rhyme label="a" type="f" corresp="#s1:l1">verheven</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Claerre dan der zonnen <rhyme label="b" type="m" corresp="#s1:l2">scijn</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Alle vruecht es di <rhyme label="a" type="f" corresp="#s1:l1">ghegheven</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Egidius waer bestu <rhyme label="a" type="f">bleven</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Mi lanct na di gheselle <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Du coors die doot du liets mi <rhyme label="a" type="f" corresp="#s2:l1">tleven</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Nu bidt vor mi ic moet noch <rhyme label="b" type="m" corresp="#s2:l2">sneven</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Ende in de weerelt liden <rhyme label="b" type="m" corresp="#s2:l2">pijn</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Verware mijn stede di <rhyme label="a" type="f" corresp="#s2:l1">beneven</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Ic moet noch zinghen een <rhyme label="b" type="m" corresp="#s2:l2">liedekijn</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Nochtan moet emmer ghestorven <rhyme label="a" type="f" corresp="#s2:l1">sijn</rhyme></l>
      </lg>
    </lg>
