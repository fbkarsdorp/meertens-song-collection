  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EEns een Rijkman, trots van <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hadde tot sijn kleedingh <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Purper, en het fijnste <rhyme label="a" type="f" corresp="#s1:l1">Linnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daer beneeven was <rhyme label="b" type="m" corresp="#s1:l2">gewoon</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Kostelijken alle <rhyme label="c" type="m">daegh</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Te versaden sijne <rhyme label="c" type="m" corresp="#s1:l5">maegh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aen sijn deure plach te <rhyme label="a" type="f">leggen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Lasarus den <rhyme label="b" type="m">Beedelaer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Seerigh, en die plagh te <rhyme label="a" type="f" corresp="#s2:l1">seggen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Kruymelingen geeft mijn <rhyme label="b" type="m" corresp="#s2:l2">maer</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die van Tafel vallen <rhyme label="c" type="m">af</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Ende niemant hem die <rhyme label="c" type="m" corresp="#s2:l5">gaf</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer de honden sijn <rhyme label="a" type="f">gekoomen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Lecken sijne <rhyme label="b" type="m">Seerigheyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ende daer na heeft den <rhyme label="a" type="f" corresp="#s3:l1">vroomen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">'t Sterflijk leeven af <rhyme label="b" type="m" corresp="#s3:l2">geleyt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">d'Engels hebben, na sijn <rhyme label="c" type="m">doot</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Hem gebroght in Abrams <rhyme label="c" type="m" corresp="#s3:l5">schoot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ook den Rijken scheyt van 't <rhyme label="a" type="f">leeven</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Wordt begraven in de <rhyme label="b" type="m">Hel</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Heeft sijn oogen <rhyme label="a" type="f" corresp="#s4:l1">op-geheeven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Sijnde in tormenten <rhyme label="b" type="m" corresp="#s4:l2">fel</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Sagh hy Abraham van <rhyme label="c" type="m">wijd'</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Lazarum aen sijne <rhyme label="c" type="m" corresp="#s4:l5">sijd'</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dus den Rijken riep met <rhyme label="a" type="f">kermen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Goede Vader <rhyme label="b" type="m">Abraham</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Wilt u mijnder togh <rhyme label="a" type="f" corresp="#s5:l1">ontfermen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ogh, of Lazarus eens <rhyme label="b" type="m" corresp="#s5:l2">quam</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Op mijn tonge brengen <rhyme label="c" type="m">wat</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Met sijn vinger koelend' <rhyme label="c" type="m" corresp="#s5:l5">nat</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Want het vuer mijn al te <rhyme label="a" type="f">kraghtigh</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Tormenteert hier in de <rhyme label="b" type="m">Hel</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Abraham seydt, weest <rhyme label="a" type="f" corresp="#s6:l1">gedaeghtigh</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">In u leeven was 't u <rhyme label="b" type="m" corresp="#s6:l2">wel</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Lasarus hadt veel <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Hy nu troost krijght; maer gy <rhyme label="c" type="m" corresp="#s6:l5">niet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Daer beneeven tusschen <rhyme label="a" type="f">tweën</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Groote scheydingh is <rhyme label="b" type="m">gemaekt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Soo dat niemant na <rhyme label="a" type="f" corresp="#s7:l1">beneën</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Nogh van daer, tot hier <rhyme label="b" type="m" corresp="#s7:l2">geraekt</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Vader, seydt hy, sendt hem <rhyme label="c" type="m">maer</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Na het huys van mijnen <rhyme label="c" type="m" corresp="#s7:l5">Vaêr</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dat hy mijn vijf Broêra doe <rhyme label="a" type="f">weeten</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Dat sy blijven hier van <rhyme label="b" type="m">daen</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Abram seydt, laet sy <rhyme label="a" type="f" corresp="#s8:l1">Propheeten</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ende Moysen  hooren <rhyme label="b" type="m" corresp="#s8:l2">aen</rhyme>;</l>
        <l id="s8:l5" met="4" type="-+">Maer de Rijke met <rhyme label="c" type="m">geween</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Seyde, Vader Abram, <rhyme label="c" type="m" corresp="#s8:l5">neen</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Soo daer ymant quam <rhyme label="a" type="f">verschijnen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Van der doodt, en sprak haer <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Sy haer beeter souden <rhyme label="a" type="f" corresp="#s9:l1">pijnen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Penitenti te <rhyme label="b" type="m" corresp="#s9:l2">ontfaen</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Abraham, op dit <rhyme label="c" type="m">bescheydt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Hem weerom contrari <rhyme label="c" type="m" corresp="#s9:l5">seydt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Soo sy Moysen en <rhyme label="a" type="f">Propheeten</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Niet en hooren, sullen <rhyme label="b" type="m">sy</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Hier van geensins wille <rhyme label="a" type="f" corresp="#s10:l1">weeten</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Al quam haer ook ymant <rhyme label="b" type="m" corresp="#s10:l2">by</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Die weer van der doodt <rhyme label="c" type="m">verrees</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Sy niet souden looven <rhyme label="c" type="m" corresp="#s10:l5">dees</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Heer, wilt gy ons rijkdom <rhyme label="a" type="f">geeven</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Maekt ons tot den armen <rhyme label="b" type="m">milt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Moeten wy in armoed' <rhyme label="a" type="f" corresp="#s11:l1">leeven</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Patienti geeven <rhyme label="b" type="m" corresp="#s11:l2">wilt</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Wat is dogh des Weerelts <rhyme label="c" type="m">praght</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Als om 't eeuwigh wordt <rhyme label="c" type="m" corresp="#s11:l5">gedaght</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
