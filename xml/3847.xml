    <melody>Zo lang als mijn ziel leeft</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">‡ LOoft den Heere o siele <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ick wil den Heere seer <rhyme label="b" type="f">verheuen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Louen ende ooc dancbaer <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">So langhe als ick toch sal <rhyme label="b" type="f" corresp="#s1:l2">leuen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ick wil mijnen Godt lofsanck <rhyme label="b" type="f" corresp="#s1:l2">geuen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Tewijl dat ick ben in dit <rhyme label="c" type="m">dal</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">* en bout niet op Princen die <rhyme label="b" type="f" corresp="#s1:l2">sneuen</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Tzijn menschen sonder hulpe <rhyme label="c" type="m" corresp="#s1:l6">al</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">† Des menschen gheest die moet van <rhyme label="a" type="m">daer</rhyme></l>
        <l id="s2:l2" met="4" type="-+">En hy moet worden aerde <rhyme label="b" type="f">cleyne</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Als dan so zijn verloren <rhyme label="a" type="m" corresp="#s2:l1">claer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Al zijn raetslaghen int <rhyme label="b" type="f" corresp="#s2:l2">ghemeyne</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Wel hem die den Godt Jacobs <rhyme label="b" type="f" corresp="#s2:l2">reyne</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Een hulpe is in al zijn <rhyme label="c" type="m">werck</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Diens hoop op den Heer <rhyme label="b" type="f" corresp="#s2:l2">certeyne</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Sijnen God staet vast ende <rhyme label="c" type="m" corresp="#s2:l6">sterck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die hemel aerd en die zee <rhyme label="a" type="m">wijt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ende al wat daer in is <rhyme label="b" type="f">mede</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Ghemaeckt heeft snel ende <rhyme label="a" type="m" corresp="#s3:l1">subijt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Die tgheloof hout in <rhyme label="b" type="f" corresp="#s3:l2">eewichede</rhyme></l>
        <l id="s3:l5" met="4" type="-+">En hier recht doet tot alder <rhyme label="b" type="f" corresp="#s3:l2">stede</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Die ghewelt lijden cleyn en <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Die hier den hongherighen <rhyme label="b" type="f" corresp="#s3:l2">lede</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Ouervloedich spijst inden <rhyme label="c" type="m" corresp="#s3:l6">noot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">‡ Die geuangne wt druck en <rhyme label="a" type="m">leyt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Verlost die Heere wijs van <rhyme label="b" type="f">rade</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Die Heer gheeft tghesicht en <rhyme label="a" type="m" corresp="#s4:l1">claerheyt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Die blinde wel door zijn <rhyme label="b" type="f" corresp="#s4:l2">ghenade</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Hy recht op ende slaet oock <rhyme label="b" type="f" corresp="#s4:l2">gade</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Die hier zijn nederghe <rhyme label="c" type="m">slaghen</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Die Heere laet hem vroech en <rhyme label="b" type="f" corresp="#s4:l2">spade</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Den gherechtighen <rhyme label="c" type="m" corresp="#s4:l6">behaghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die Heere bewaert en siet <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">‡ Die vremdlinghen aen alle <rhyme label="b" type="f">zijden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">De weeskens sal hy gade <rhyme label="a" type="m" corresp="#s5:l1">slaen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">† Die weduwen in alle <rhyme label="b" type="f" corresp="#s5:l2">tijden</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Onderhout die Heer met <rhyme label="b" type="f" corresp="#s5:l2">verblijden</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Der Godtloosen wech hy <rhyme label="c" type="m">verstoort</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Die Heer is Coninck tallen <rhyme label="b" type="f" corresp="#s5:l2">tijden</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Dijn Godt Sion voort ende <rhyme label="c" type="m" corresp="#s5:l6">voort</rhyme></l>
      </lg>
    </lg>
  </text>
