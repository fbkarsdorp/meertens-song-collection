    <melody>Hansje sneed het koren</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Op desen dach al sonder <rhyme label="a" type="m">geclach</rhyme>,,</l>
        <l id="s1:l2" met="3" type="-+">Zoo willen wy ons <rhyme label="b" type="f">vermeyden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Tis laetendach,, hoort mijn <rhyme label="a" type="m" corresp="#s1:l1">beiach</rhyme>,,</l>
        <l id="s1:l4" met="3" type="-+">Wy hebbenden sien <rhyme label="b" type="f" corresp="#s1:l2">bereyden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Bedryft iolyt,, wie dat ghy <rhyme label="a" type="m">syt</rhyme>,,</l>
        <l id="s2:l2" met="3" type="-+">Met vryder herten <rhyme label="b" type="f">vromen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En weest verblijt, tot nijders <rhyme label="a" type="m" corresp="#s2:l1">spijt</rhyme>,,</l>
        <l id="s2:l4" met="3" type="-+">Twort al int goet <rhyme label="b" type="f" corresp="#s2:l2">genomen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die suerlijck siet,, tis mijn <rhyme label="a" type="m">bediet</rhyme>,,</l>
        <l id="s3:l2" met="3" type="-+">Men sal hem laeten <rhyme label="b" type="f">muijlen</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Want swaer verdriet,, en dient hier <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>,,</l>
        <l id="s3:l4" met="3" type="-+">Het maecket metten <rhyme label="b" type="f" corresp="#s3:l2">vuylen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Kijvagien fel,, en alle <rhyme label="a" type="m">geschel</rhyme>,,</l>
        <l id="s4:l2" met="3" type="-+">Van hier oock moeten <rhyme label="b" type="f">wijcken</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Tis Godts bevel,, ten is geen <rhyme label="a" type="m" corresp="#s4:l1">goetspel</rhyme>,,</l>
        <l id="s4:l4" met="3" type="-+">Daer dese tusschen <rhyme label="b" type="f" corresp="#s4:l2">kijcken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die d'aldermeest,, zal maecken <rhyme label="a" type="m">feest</rhyme>,,</l>
        <l id="s5:l2" met="3" type="-+">Om vrolicheyt te <rhyme label="b" type="f">rapen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Het is een gheest,, men stelt hem <rhyme label="a" type="m" corresp="#s5:l1">d'ierst</rhyme>,,</l>
        <l id="s5:l4" met="3" type="-+">Vande Metten mach hy <rhyme label="b" type="f" corresp="#s5:l2">slapen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dus Broerkens mijn,, wilt vrolijck <rhyme label="a" type="m">zijn</rhyme>,,</l>
        <l id="s6:l2" met="3" type="-+">In Godt den heer daer <rhyme label="b" type="f">boven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En drinckt den wijn,, zoo moechdy <rhyme label="a" type="m" corresp="#s6:l1">fijn</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Godt beter dancken en <rhyme label="b" type="f" corresp="#s6:l2">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
