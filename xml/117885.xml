  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEer Jesu, al mijn <rhyme label="a" type="m">lust</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Der zielen hoogste <rhyme label="a" type="m" corresp="#s1:l1">rust</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die all', (wie tot u <rhyme label="b" type="f">koomen</rhyme>)</l>
        <l id="s1:l4" met="3" type="-+">Wilt met des leevens <rhyme label="b" type="f" corresp="#s1:l3">stroomen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Verquikken en <rhyme label="c" type="f">verzaaden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ik kom tot u <rhyme label="c" type="f" corresp="#s1:l5">be-laaden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat tydlick is, <rhyme label="a" type="m">vergaet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">'t Veroudt als een <rhyme label="a" type="m" corresp="#s2:l1">gewaedt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Niet isser dat kan <rhyme label="b" type="f">blyven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Of lange vast <rhyme label="b" type="f" corresp="#s2:l3">beklyven</rhyme></l>
        <l id="s2:l5" met="3" type="-+">In 't weereldsche <rhyme label="c" type="f">getimmer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Maer gy verandert <rhyme label="c" type="f" corresp="#s2:l5">nimmer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al gaeft gy alles <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En met u selfs daer <rhyme label="a" type="m" corresp="#s3:l1">by</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">'t Souw noit mijn ziel <rhyme label="b" type="f">vernoegen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Noch waere rust <rhyme label="b" type="f" corresp="#s3:l3">toevoegen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Want alles is <rhyme label="c" type="f">verderff'lyck</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Maer d'eed'le ziel <rhyme label="c" type="f" corresp="#s3:l5">onsterff'lyck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">In en met u <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Is mijne ziel te <rhyme label="a" type="m" corresp="#s4:l1">vreen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sy sal van rust versaedt <rhyme label="b" type="f">zijn</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Soo maer uw soet gelaet <rhyme label="b" type="f" corresp="#s4:l3">schijn</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En met sijn heldre <rhyme label="c" type="f">straalen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Kom op mijn herte <rhyme label="c" type="f" corresp="#s4:l5">daalen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hoe brandend' is uw <rhyme label="a" type="m">min</rhyme>!</l>
        <l id="s5:l2" met="3" type="-+">Hoe lieff'lick stort gy <rhyme label="a" type="m" corresp="#s5:l1">s'in</rhyme>!</l>
        <l id="s5:l3" met="3" type="-+">Hoe groot, hoe hoog, hoe <rhyme label="b" type="f">heerlick</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Hoe diep en <rhyme label="b" type="f" corresp="#s5:l3">ongrondeerlick</rhyme>!</l>
        <l id="s5:l5" met="3" type="-+">Ey laet my sonder <rhyme label="c" type="f">vreesen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Daer meed' vernoeget <rhyme label="c" type="f" corresp="#s5:l5">weesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gy zijt my alles, <rhyme label="a" type="m">Heer</rhyme>;</l>
        <l id="s6:l2" met="3" type="-+">Gy zijt in smaat mijn <rhyme label="a" type="m" corresp="#s6:l1">eer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Mijn lof en roem in <rhyme label="b" type="f">schanden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Mijn vryheid in mijn <rhyme label="b" type="f" corresp="#s6:l3">banden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">In noot mijn lot en <rhyme label="c" type="f">erve</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Mijn leeven als ick <rhyme label="c" type="f" corresp="#s6:l5">sterve</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Mijn troost, mijn vreugd, mijn <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Mijn heil en <rhyme label="a" type="m" corresp="#s7:l1">toeversicht</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ick geev' aen u my <rhyme label="b" type="f">over</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">Geeft dat den Helschen <rhyme label="b" type="f" corresp="#s7:l3">Roover</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Doch nimmer weer <rhyme label="c" type="f">verslinde</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Dees' rust die 'k in u <rhyme label="c" type="f" corresp="#s7:l5">vinde</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Soo sal mijn hert <rhyme label="a" type="m">altijt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Zijn in uw heyl <rhyme label="a" type="m" corresp="#s8:l1">verblijdt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Ick sal om dese <rhyme label="b" type="f">dinghen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">U Heere lief'lick <rhyme label="b" type="f" corresp="#s8:l3">singhen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Om dat ghy uyt <rhyme label="c" type="f">genaden</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">My doet soo veel <rhyme label="c" type="f" corresp="#s8:l5">weldaden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O Heer ick lov' u <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Soo veel ick loven <rhyme label="a" type="m" corresp="#s9:l1">kan</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Wijl ick uyt al mijn <rhyme label="b" type="f">kraghte</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Nae uwe ruste <rhyme label="b" type="f" corresp="#s9:l3">trachte</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En dat ick u hier <rhyme label="c" type="f">boven</rhyme></l>
        <l id="s9:l6" met="3" type="-+">In eeuwigheyt magh <rhyme label="c" type="f" corresp="#s9:l5">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
