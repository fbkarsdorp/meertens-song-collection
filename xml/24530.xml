  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">God vanden hemel die aenden cruce <rhyme label="a" type="f">leet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">ende maria die reyne <rhyme label="b" type="f">fonteyne</rhyme></l>
        <l id="s1:l3" met="4" type="-+">die en wil ons vergeten ommer <rhyme label="c" type="f">niet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">sy bewaer ons geselscap groet ende <rhyme label="b" type="f" corresp="#s1:l2">cleyn</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Tot onsen heren god wille wi all gader <rhyme label="a" type="f">varen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">nv hoert wat ic v sal <rhyme label="b" type="f">verclaren</rhyme></l>
        <l id="s2:l3" met="4" type="-+">nv hoert myne reden <rhyme label="c" type="f">auerluyt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">van eenre joncfrouwen geheten Sante <rhyme label="b" type="f" corresp="#s2:l2">gheertruyt</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ende van enen stolten rydder <rhyme label="a" type="f">medesunt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">nv moegdy hoeren wat hi <rhyme label="b" type="f">dede</rhyme></l>
        <l id="s3:l3" met="4" type="-+">hi mynden syn lief op alsoe gueder <rhyme label="c" type="f">trouwen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Sante Gheertruyt die schone <rhyme label="b" type="f" corresp="#s3:l2">joncfrouwe</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al daer sy oer in een cloester hadde <rhyme label="a" type="f">begeuen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">daer wolde si dienen al oer <rhyme label="b" type="f">leuen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">god ende den groten heren Sante <rhyme label="c" type="f">johan</rhyme></l>
        <l id="s4:l4" met="4" type="-+">den hadde sy vercaeren tot enen <rhyme label="b" type="f" corresp="#s4:l2">man</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die rydder alle dage dat hi tot oer <rhyme label="a" type="f">quam</rhyme></l>
        <l id="s5:l2" met="4" type="-+">als hi sy niet ende moch te sien of <rhyme label="b" type="f">spreken</rhyme></l>
        <l id="s5:l3" met="4" type="-+">druck ende liden soe ghynck den rydder <rhyme label="c" type="f">aen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">hem dochte syn herte solde hem toe <rhyme label="b" type="f" corresp="#s5:l2">breken</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Alsoe lief hadde hi die schoene <rhyme label="a" type="f">joncfrouwe</rhyme></l>
        <l id="s6:l2" met="4" type="-+">dat hi oer wal gan syne <rhyme label="b" type="f">trouwe</rhyme></l>
        <l id="s6:l3" met="4" type="-+">hi dachte hi soldet oer seker <rhyme label="c" type="f">vragen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">mer hi en dorste des nye <rhyme label="b" type="f" corresp="#s6:l2">gewagen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ende alsoe lief hadde sy den rydder <rhyme label="a" type="f">weder</rhyme></l>
        <l id="s7:l2" met="4" type="-+">ende al in gueder <rhyme label="b" type="f">reynicht</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Sante johan en wolde sy niet <rhyme label="c" type="f">beswyken</rhyme></l>
        <l id="s7:l4" met="4" type="-+">noch maria gades moeder <rhyme label="b" type="f" corresp="#s7:l2">mede</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nv wil ic laten dese <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s8:l2" met="4" type="-+">ende vanden rydder wil ic v <rhyme label="b" type="f">syngen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">wat costen dat hi daer toe <rhyme label="c" type="f">dede</rhyme></l>
        <l id="s8:l4" met="4" type="-+">des en konde hi niet <rhyme label="b" type="f" corresp="#s8:l2">volbrengen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hi liet oer maken voele schoene <rhyme label="a" type="f">dingen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">hoe luttel dat hi oer dat <rhyme label="b" type="f">vrageden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">kerken en clucen hi dede daer mysse in <rhyme label="c" type="f">syngen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">allent dat hi woste dat oer <rhyme label="b" type="f" corresp="#s9:l2">behagede</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Drie jaer lanck heeft die rydder dit <rhyme label="a" type="f">geplegen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">des soe en heeft hi niet <rhyme label="b" type="f">beholden</rhyme></l>
        <l id="s10:l3" met="4" type="-+">syn scat ende syn guet heeft hem altemael <rhyme label="c" type="f">begeuen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">des hadde die rydder alsoe groten <rhyme label="b" type="f" corresp="#s10:l2">rouwe</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Addev guet lief ende blyft <rhyme label="a" type="f">gesont</rhyme></l>
        <l id="s11:l2" met="4" type="-+">addeu ende ic moet ommer van v <rhyme label="b" type="f">scheyden</rhyme></l>
        <l id="s11:l3" met="4" type="-+">die wech en is my niet <rhyme label="c" type="f">becant</rhyme></l>
        <l id="s11:l4" met="4" type="-+">toe dwaelen aen geenre wylder <rhyme label="b" type="f" corresp="#s11:l2">heyden</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Och lacy god het is altemael <rhyme label="a" type="f">verlaren</rhyme></l>
        <l id="s12:l2" met="4" type="-+">wat coste dat ic daer aen hebbe <rhyme label="b" type="f">gelecht</rhyme></l>
        <l id="s12:l3" met="4" type="-+">had ik dat soe wal geweten toe <rhyme label="c" type="f">voeren</rhyme></l>
        <l id="s12:l4" met="4" type="-+">ick wolde vander joncfrouwen hebben <rhyme label="b" type="f" corresp="#s12:l2">gescheyden</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dus is die rydder <rhyme label="a" type="f">wtghestreken</rhyme></l>
        <l id="s13:l2" met="4" type="-+">in eenre duyster <rhyme label="b" type="f">auentstont</rhyme></l>
        <l id="s13:l3" met="4" type="-+">hi is gaen dwaelen aen geenre wylder <rhyme label="c" type="f">heyden</rhyme></l>
        <l id="s13:l4" met="4" type="-+">dye wech die was hem <rhyme label="b" type="f" corresp="#s13:l2">onbecant</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Doe dat quam omtrent der <rhyme label="a" type="f">myddernacht</rhyme></l>
        <l id="s14:l2" met="4" type="-+">druck ende lyden soe gynck den rydder <rhyme label="b" type="f">aen</rhyme></l>
        <l id="s14:l3" met="4" type="-+">die viant die hadde hem alsoe schier <rhyme label="c" type="f">verwracht</rhyme></l>
        <l id="s14:l4" met="4" type="-+">hi stont gescaepen of dat waer een <rhyme label="b" type="f" corresp="#s14:l2">man</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Die viant die sprack den rydder <rhyme label="a" type="f">toe</rhyme></l>
        <l id="s15:l2" met="4" type="-+">vrent hoe coemdi in dit <rhyme label="b" type="f">liden</rhyme></l>
        <l id="s15:l3" met="4" type="-+">ic weet v herte oec alsoe wal van <rhyme label="c" type="f">bynnen</rhyme></l>
        <l id="s15:l4" met="4" type="-+">wanneer gi wylt soe sal ic v <rhyme label="b" type="f" corresp="#s15:l2">verblyden</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Die rydder die sprack den viant weder <rhyme label="a" type="f">toe</rhyme></l>
        <l id="s16:l2" met="4" type="-+">van v soe en byn ic niet <rhyme label="b" type="f">verblyt</rhyme></l>
        <l id="s16:l3" met="4" type="-+">ic en wil noch jerstwerf <rhyme label="c" type="f">weten</rhyme></l>
        <l id="s16:l4" met="4" type="-+">wan gi comt of wie gi <rhyme label="b" type="f" corresp="#s16:l2">syt</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Die viant die sprack een guet <rhyme label="a" type="f">beduyt</rhyme></l>
        <l id="s17:l2" met="4" type="-+">wat helpet dat ic v voele <rhyme label="b" type="f">vertelle</rhyme></l>
        <l id="s17:l3" met="4" type="-+">och lieue vrent versaget v ommer <rhyme label="c" type="f">niet</rhyme></l>
        <l id="s17:l4" met="4" type="-+">ic byn die viant vander <rhyme label="b" type="f" corresp="#s17:l2">hellen</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Ick ende alle myne <rhyme label="a" type="f">gesellen</rhyme></l>
        <l id="s18:l2" met="4" type="-+">wi willen v geuen guedes alsoe <rhyme label="b" type="f">voele</rhyme></l>
        <l id="s18:l3" met="4" type="-+">nvmmermeer en moegdi dat <rhyme label="c" type="f">verteren</rhyme></l>
        <l id="s18:l4" met="4" type="-+">v    vrende ende v mage sullens hebben te <rhyme label="b" type="f" corresp="#s18:l2">bet</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Ic en alle myne <rhyme label="a" type="f">gesellen</rhyme></l>
        <l id="s19:l2" met="4" type="-+">wy willen v geuen guedes alsoe <rhyme label="b" type="f">voele</rhyme></l>
        <l id="s19:l3" met="4" type="-+">nv settet my v ziele tot enen <rhyme label="c" type="f">pande</rhyme></l>
        <l id="s19:l4" met="4" type="-+">ende segt my hoe lange dat gi leuen <rhyme label="b" type="f" corresp="#s19:l2">wylt</rhyme></l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Soeuen jaer soe coes die rydder syn <rhyme label="a" type="f">leuen</rhyme></l>
        <l id="s20:l2" met="4" type="-+">hi leet daer wt syn rode <rhyme label="b" type="f">bloet</rhyme></l>
        <l id="s20:l3" met="4" type="-+">daer en was penne noch <rhyme label="c" type="f">fransyn</rhyme></l>
        <l id="s20:l4" met="4" type="-+">hoe schier dattet daer gescreuen <rhyme label="b" type="f" corresp="#s20:l2">stont</rhyme></l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Hy hadde syn segel daer aen <rhyme label="a" type="f">gedrucket</rhyme></l>
        <l id="s21:l2" met="4" type="-+">hi gaf den viant synen <rhyme label="b" type="f">brief</rhyme></l>
        <l id="s21:l3" met="4" type="-+">hoe luttel dat hem daer voer <rhyme label="c" type="f">gruwelden</rhyme></l>
        <l id="s21:l4" met="4" type="-+">soe seer mynde hi syn <rhyme label="b" type="f" corresp="#s21:l2">suetelief</rhyme></l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Die rydder reet hen soe <rhyme label="a" type="f">blydelic</rhyme></l>
        <l id="s22:l2" met="4" type="-+">in hem seluen dat hi <rhyme label="b" type="f">loech</rhyme></l>
        <l id="s22:l3" met="4" type="-+">die viant en woldes niet <rhyme label="c" type="f">beswyken</rhyme></l>
        <l id="s22:l4" met="4" type="-+">hi bracht hem scattes ende guedes <rhyme label="b" type="f" corresp="#s22:l2">genoech</rhyme></l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Eten ende dryncken ende alle syn <rhyme label="a" type="f">genoechte</rhyme></l>
        <l id="s23:l2" met="4" type="-+">ende in ternoeye wolde hi <rhyme label="b" type="f">steken</rhyme></l>
        <l id="s23:l3" met="4" type="-+">want hi hadde guedes alsoe <rhyme label="c" type="f">voel</rhyme></l>
        <l id="s23:l4" met="4" type="-+">nvmmermeer en mochtes hem <rhyme label="b" type="f" corresp="#s23:l2">ontbreken</rhyme></l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Soeuen jaer is nv syn <rhyme label="a" type="f">leuen</rhyme></l>
        <l id="s24:l2" met="4" type="-+">luttel myn of luttel <rhyme label="b" type="f">bet</rhyme></l>
        <l id="s24:l3" met="4" type="-+">soe sprack die viant tot deser <rhyme label="c" type="f">vren</rhyme></l>
        <l id="s24:l4" met="4" type="-+">comet weder op deser seluer <rhyme label="b" type="f" corresp="#s24:l2">stat</rhyme></l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Wanneer die souen jaer syn <rhyme label="a" type="f">omgecomen</rhyme></l>
        <l id="s25:l2" met="4" type="-+">stolt rydder gi en sult des laten <rhyme label="b" type="f">niet</rhyme></l>
        <l id="s25:l3" met="4" type="-+">gy sult hier comen op deser selue <rhyme label="c" type="f">stede</rhyme></l>
        <l id="s25:l4" met="4" type="-+">v is hier alsoe lede <rhyme label="b" type="f" corresp="#s25:l2">gheschiet</rhyme></l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">Ende doet quam in dat souende <rhyme label="a" type="f">jaer</rhyme></l>
        <l id="s26:l2" met="4" type="-+">ende doet quam anden lesten <rhyme label="b" type="f">dach</rhyme></l>
        <l id="s26:l3" met="4" type="-+">doe stont die rydder ende <rhyme label="c" type="f">dachte</rhyme></l>
        <l id="s26:l4" met="4" type="-+">wat dat hi eens gelaeuet <rhyme label="b" type="f" corresp="#s26:l2">hadde</rhyme></l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="-+">Doet quam in die leste <rhyme label="a" type="f">maent</rhyme></l>
        <l id="s27:l2" met="4" type="-+">hi heeft hem seluen alsoe wal <rhyme label="b" type="f">bedacht</rhyme></l>
        <l id="s27:l3" met="4" type="-+">wat hi synre armer zielen hadde <rhyme label="c" type="f">mysdaen</rhyme></l>
        <l id="s27:l4" met="4" type="-+">daer hem die viant in crencken <rhyme label="b" type="f" corresp="#s27:l2">mochte</rhyme></l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="4" type="-+">Addeu sante Gheertruyt wy moeten ommer <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s28:l2" met="4" type="-+">sy sprac ons lieue vrouwe die moet v <rhyme label="b" type="f">geleyden</rhyme></l>
        <l id="s28:l3" met="4" type="-+">by v te blyuen en is my gene <rhyme label="c" type="f">bate</rhyme></l>
        <l id="s28:l4" met="4" type="-+">addeu Sante gheertruyt ic moet v <rhyme label="b" type="f" corresp="#s28:l2">laten</rhyme></l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="4" type="-+">Nv dryncket rydder sante johans <rhyme label="a" type="f">geleyde</rhyme></l>
        <l id="s29:l2" met="4" type="-+">nv dryncket om die mynne van <rhyme label="b" type="f">my</rhyme></l>
        <l id="s29:l3" met="4" type="-+">nv dryncket rydder het sal v <rhyme label="c" type="f">vroemen</rhyme></l>
        <l id="s29:l4" met="4" type="-+">ic hape gi sult wal weder <rhyme label="b" type="f" corresp="#s29:l2">coemen</rhyme></l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="4" type="-+">Hy nam den nap op synre <rhyme label="a" type="f">hant</rhyme></l>
        <l id="s30:l2" met="4" type="-+">hi setten hem voer synen <rhyme label="b" type="f">mont</rhyme></l>
        <l id="s30:l3" met="4" type="-+">hi en hadde die wyn oec niet <rhyme label="c" type="f">gespaert</rhyme></l>
        <l id="s30:l4" met="4" type="-+">hi dranck hem wt al toe den <rhyme label="b" type="f" corresp="#s30:l2">gront</rhyme></l>
      </lg>
      <lg id="s31" type="stanza">
        <l id="s31:l1" met="4" type="-+">Dus heeft hi oerlof vander joncfrouwen <rhyme label="a" type="f">genaemen</rhyme></l>
        <l id="s31:l2" met="4" type="-+">ende hy gynck dwaelen aen gheenre <rhyme label="b" type="f">heyden</rhyme></l>
        <l id="s31:l3" met="4" type="-+">daer hi gelaten hadde syne <rhyme label="c" type="f">trouwe</rhyme></l>
        <l id="s31:l4" met="4" type="-+">ende daer toe oec syne <rhyme label="b" type="f" corresp="#s31:l2">sekerheit</rhyme></l>
      </lg>
      <lg id="s32" type="stanza">
        <l id="s32:l1" met="4" type="-+">Hy weenden syn peert hi stacket mit <rhyme label="a" type="f">spaeren</rhyme></l>
        <l id="s32:l2" met="4" type="-+">hi liet dat gelidendoer dat <rhyme label="b" type="f">sant</rhyme></l>
        <l id="s32:l3" met="4" type="-+">hi dachte dat waer doch altemael <rhyme label="c" type="f">verlaeren</rhyme></l>
        <l id="s32:l4" met="4" type="-+">hi quam daer hi den viant <rhyme label="b" type="f" corresp="#s32:l2">vant</rhyme></l>
      </lg>
      <lg id="s33" type="stanza">
        <l id="s33:l1" met="4" type="-+">Wat doedi hier wal loese <rhyme label="a" type="f">scherjant</rhyme></l>
        <l id="s33:l2" met="4" type="-+">van v soe en byn ick niet <rhyme label="b" type="f">verblyt</rhyme></l>
        <l id="s33:l3" met="4" type="-+">holt daer uwen brief in uwer <rhyme label="c" type="f">hant</rhyme></l>
        <l id="s33:l4" met="4" type="-+">gaet van my ic schelde v <rhyme label="b" type="f" corresp="#s33:l2">quyt</rhyme></l>
      </lg>
      <lg id="s34" type="stanza">
        <l id="s34:l1" met="4" type="-+">Sy sittet hier achter op v <rhyme label="a" type="f">peert</rhyme></l>
        <l id="s34:l2" met="4" type="-+">die v alre lestwerf dryncken <rhyme label="b" type="f">gaf</rhyme></l>
        <l id="s34:l3" met="4" type="-+">van hoer soe byn ick alsoe seer <rhyme label="c" type="f">verweert</rhyme></l>
        <l id="s34:l4" met="4" type="-+">sy heuet mi benamen alle myne <rhyme label="b" type="f" corresp="#s34:l2">macht</rhyme></l>
      </lg>
      <lg id="s35" type="stanza">
        <l id="s35:l1" met="4" type="-+">Nv rade ic allen heren ende <rhyme label="a" type="f">knechten</rhyme></l>
        <l id="s35:l2" met="4" type="-+">syn sy arm of syn sy <rhyme label="b" type="f">ryke</rhyme></l>
