<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>16543</id>
    <date>
      <year-start>1903</year-start>
      <year-end>1908</year-end>
    </date>
    <tags/>
    <melody>Het jaar doen ik een oud wijf nam</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1">Het jaer doe ic een out wijf nam,</l>
        <l id="s1:l2">si was berompen;</l>
        <l id="s1:l3">ic conde haer niet ghehelpen,</l>
        <l id="s1:l4">der ouder trompen.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1">Ic ghinc wel hen ter kerken,</l>
        <l id="s2:l2">ic claechde God mijn noot:</l>
        <l id="s2:l3">help, rike God van den hemel,</l>
        <l id="s2:l4">och waer dat out wijf doot!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1">Ende doe ic weder van kerken quam</l>
        <l id="s3:l2">dat oude wijf was doot;</l>
        <l id="s3:l3">help, rike God van hemel!</l>
        <l id="s3:l4">verwonnen is al mijn noot.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1">Ic spande aen minen waghen</l>
        <l id="s4:l2">wel vijf en twintich ros,</l>
        <l id="s4:l3">daer met so ghinc ic jaghen</l>
        <l id="s4:l4">al naer den kerkhof.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1">Ende doe ic op den kerkhof quam,</l>
        <l id="s5:l2">dat graf was haer bereit.</l>
        <l id="s5:l3">Ende soudic daer om truren?</l>
        <l id="s5:l4">het was mi jo niet leit.</l>
      </lg>
    </lg>
  </text>
</song>
