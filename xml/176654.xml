    <melody>Psalm 024 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Het Paesschen-Feest in <rhyme label="a" type="m">Israël</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Most werden onderhouden <rhyme label="a" type="m" corresp="#s1:l1">wel</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Nae het bevel van Godt <rhyme label="b" type="f">ghegeeven</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Het Lammeken dat was <rhyme label="c" type="m">ghedoodt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Most elck ghenieten kleyn en <rhyme label="c" type="m" corresp="#s1:l4">groot</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Met broodt dat niet en was <rhyme label="b" type="f" corresp="#s1:l3">gheheven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy hebben nu oock een <rhyme label="a" type="m">Paesch-Lam</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Gheoffert aen des Kruyses <rhyme label="a" type="m" corresp="#s2:l1">stam</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Met swaer verdriet, ende doodts <rhyme label="b" type="f">lijden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die ghedaelt is uyt ‘s Hemels <rhyme label="c" type="m">Throon</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">‘t Welck is Christus Godts eenigh <rhyme label="c" type="m" corresp="#s2:l4">Soon</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Om ons van zonden te <rhyme label="b" type="f" corresp="#s2:l3">bevrijden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dus laet ons Paesschen houden <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Niet met Suyr-deegh, en doodts <rhyme label="a" type="m" corresp="#s3:l1">opstel</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Mser reyn, suyver, en in der <rhyme label="b" type="f">klaerheyt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Vaghende alle Zuyr-deegh <rhyme label="c" type="m">uyt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat uyt ons boose lusten <rhyme label="c" type="m" corresp="#s3:l4">spruyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Op dat wy ‘t houden in der <rhyme label="b" type="f" corresp="#s3:l3">waerheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ons Lenden moeten zijn <rhyme label="a" type="m">omgordt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En ons ghemoeden <rhyme label="a" type="m" corresp="#s4:l1">op-gheschort</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Om den wegh des Heeren te <rhyme label="b" type="f">treden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Met stocken in ons handt <rhyme label="c" type="m">gheset</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Gheschoept aen onse voeten <rhyme label="c" type="m" corresp="#s4:l4">net</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Tot den Euangely des <rhyme label="b" type="f" corresp="#s4:l3">vreden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wy moeten houden dese <rhyme label="a" type="m">Feest</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Niet nae den vleysch, maer nae den <rhyme label="a" type="m" corresp="#s5:l1">Geest</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat men sijn kracht in ons sie <rhyme label="b" type="f">blijcken</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Bestreecken met het Lammekens <rhyme label="c" type="m">bloedt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">In-wendichlijck aen ons <rhyme label="c" type="m" corresp="#s5:l4">ghemoet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En gaen so uyt Egypten <rhyme label="b" type="f" corresp="#s5:l3">strijcken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dit Paesch-Lam en mach in ‘t <rhyme label="a" type="m">gemeyn</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Niemandt ghenieten, die <rhyme label="a" type="m" corresp="#s6:l1">onreyn</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Ofte onsytver wort <rhyme label="b" type="f">bevonden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dus laet ons t’samen <rhyme label="c" type="m">metter-spoet</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Met vast gheloof, en ware <rhyme label="c" type="m" corresp="#s6:l4">boet</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Verlaten en af-staen de <rhyme label="b" type="f" corresp="#s6:l3">zonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Soo moghen wy dan <rhyme label="a" type="m">onbesmet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dit Paesch-Lam nae des Heeren <rhyme label="a" type="m" corresp="#s7:l1">Wet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Met een oprecht ghemoet <rhyme label="b" type="f">aen-vaerden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Als een spijs onser Zielen <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En door ‘t gheloof versekert <rhyme label="c" type="m" corresp="#s7:l4">zijn</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Dat het een Offer is van <rhyme label="b" type="f" corresp="#s7:l3">waerden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wie niet tot dese Paesch-Feest <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En ‘t vieren van dees Sabbath <rhyme label="a" type="m" corresp="#s8:l1">laet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Sal ‘t hier nae eeuwighlijck <rhyme label="b" type="f">beklaghen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Want Godt ons in sijn Woort <rhyme label="c" type="m">ghebiet</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Datmen dit moet versuymen <rhyme label="c" type="m" corresp="#s8:l4">niet</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Of men sal des doodts smerte <rhyme label="b" type="f" corresp="#s8:l3">draghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dus elck nu doch wel neerstigh <rhyme label="a" type="m">past</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dese Paesch-Feest te houden <rhyme label="a" type="m" corresp="#s9:l1">vast</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Ghestadelijck al met <rhyme label="b" type="f">malkander</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Niet eenen dach, maer alle <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Want so ons de Schriftuyr <rhyme label="c" type="m" corresp="#s9:l4">belijdt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Komt nu de eene Sabbath aen <rhyme label="b" type="f" corresp="#s9:l3">d’ander</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dese Feest moet hier zijn <rhyme label="a" type="m">gheviert</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Met gheloof, liefd’, en deughd’ <rhyme label="a" type="m" corresp="#s10:l1">verciert</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">En stadighe rust van quae <rhyme label="b" type="f">wercken</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Want geen boosheyt mach zijn <rhyme label="c" type="m">volbracht</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Met woordt, wil, werck ofte <rhyme label="c" type="m" corresp="#s10:l4">ghedacht</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Dus laet ons vlijtigh hier op <rhyme label="b" type="f" corresp="#s10:l3">mercken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Och of elck wel ter herten <rhyme label="a" type="m">nam</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Waer toe Christus van boven <rhyme label="a" type="m" corresp="#s11:l1">quam</rhyme></l>
        <l id="s11:l3" met="4" type="-+">En den doodt willighlijck ginck <rhyme label="b" type="f">smaken</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">’t Was soo des Vaders wil en <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Op dat den Duyvel wert <rhyme label="c" type="m" corresp="#s11:l4">gheblust</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">En door ‘t ghelooff zalich te <rhyme label="b" type="f" corresp="#s11:l3">maecken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Soo wy dan in hem hopen <rhyme label="a" type="m">vast</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En dat ons druckt der zonden <rhyme label="a" type="m" corresp="#s12:l1">last</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Met leedt-wesen, druck, en <rhyme label="b" type="f">benouwen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Soo helpt hy ons als <rhyme label="c" type="m">Middelaer</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Ghewillighlijck, alst valt te <rhyme label="c" type="m" corresp="#s12:l4">swaer</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Teghens den vyandt ‘t velt <rhyme label="b" type="f" corresp="#s12:l3">behouwen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dus laet ons alle tot hem <rhyme label="a" type="m">treen</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Hy is ons hulp, en anders <rhyme label="a" type="m" corresp="#s13:l1">gheen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Ons Paesch-Lam, en ons <rhyme label="b" type="f">Offerandt</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Die van boven is neer <rhyme label="c" type="m">ghedaelt</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">En heeft de schult voor ons <rhyme label="c" type="m" corresp="#s13:l4">betaelt</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Aan ‘t Kruys, met pijn, smaet ende <rhyme label="b" type="f" corresp="#s13:l3">schande</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hy quam nae ‘s Vaders wil en <rhyme label="a" type="m">raet</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Als een Mensch in soberen <rhyme label="a" type="m" corresp="#s14:l1">staet</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Hem hier ter Werelt <rhyme label="b" type="f">openbaren</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En heeft ons met sijn bloet <rhyme label="c" type="m">ghekocht</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">En doen hy ‘t al hadde <rhyme label="c" type="m" corresp="#s14:l4">volbrocht</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Is hy weder op-waert <rhyme label="b" type="f" corresp="#s14:l3">ghevaren</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Maer als hy weder komen <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Met der Basuynen groot <rhyme label="a" type="m" corresp="#s15:l1">gheschal</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Heerlijck, en seer groot van <rhyme label="b" type="f">machte</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Om sijn Oordeel te houden <rhyme label="c" type="m">dan</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Dat niemandt hierm ontvluchten <rhyme label="c" type="m" corresp="#s15:l4">kan</rhyme></l>
        <l id="s15:l6" met="4" type="-+">Van al ‘t menschelijcke <rhyme label="b" type="f" corresp="#s15:l3">gheslachte</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Och! mochten wy dan zijn <rhyme label="a" type="m">bereydt</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Aenghedaen met een <rhyme label="a" type="m" corresp="#s16:l1">Bruylofts-kleydt</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">En van hem met vreucht mochten <rhyme label="b" type="f">hooren</rhyme>:</l>
        <l id="s16:l4" met="4" type="-+">Ghy ghebenedijde <rhyme label="c" type="m">ghelijck</rhyme></l>
        <l id="s16:l5" met="4" type="-+">Komt en besit mijn Vaders <rhyme label="c" type="m" corresp="#s16:l4">rijck</rhyme></l>
        <l id="s16:l6" met="4" type="-+">Met alle Godes <rhyme label="b" type="f" corresp="#s16:l3">uyt-verkoren</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Hoe heerlijck asal het zijn <rhyme label="a" type="m">ghestelt</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Als wy door hem behouden ‘t <rhyme label="a" type="m" corresp="#s17:l1">velt</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">En den ingangh tot ‘t eeuwigh <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Daer wy dan met volkomen <rhyme label="c" type="m">vreught</rhyme></l>
        <l id="s17:l5" met="4" type="-+">Eeuwighlijck sullen zijn <rhyme label="c" type="m" corresp="#s17:l4">verheught</rhyme>,</l>
        <l id="s17:l6" met="4" type="-+">Och vrienden! laet ons hier nae <rhyme label="b" type="f" corresp="#s17:l3">streven</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">O Prinse alder Prinsen <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">U Schaepkens hier toe bystant <rhyme label="a" type="m" corresp="#s18:l1">doet</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Op dat sy u ghenaed’ <rhyme label="b" type="f">verwerven</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">En soo voortaen in <rhyme label="c" type="m">eeuwigheyt</rhyme></l>
        <l id="s18:l5" met="4" type="-+">‘t Bywesen van u <rhyme label="c" type="m" corresp="#s18:l4">Majesteyt</rhyme></l>
        <l id="s18:l6" met="4" type="-+">Met d’uyt-verkorenen <rhyme label="b" type="f" corresp="#s18:l3">be-erven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
