  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Dagh ô alder soetsten <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die oyt de Wereldt <rhyme label="a" type="m" corresp="#s1:l1">sagh</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">O, ô Jesus soeten <rhyme label="b" type="m">Naem</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ick wil met duysent groene <rhyme label="c" type="f">palmen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En duysent soete <rhyme label="c" type="f" corresp="#s1:l4">galmen</rhyme></l>
        <l id="s1:l6" met="1" type="-+">Van <rhyme label="c" type="f" corresp="#s1:l4">Psalmen</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Verbreyden uwe soete <rhyme label="b" type="m" corresp="#s1:l3">faem</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">O Jfsu Naem vol <rhyme label="d" type="f">Goedtheydt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">O Naem vol troost, en <rhyme label="d" type="f" corresp="#s1:l8">soetigheyt</rhyme></l>
        <l id="s1:l10" met="4" type="-+">O Soeter' Naem als Tortel <rhyme label="e" type="m">duyf</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">O Soeter Naem als <rhyme label="e" type="m" corresp="#s1:l10">Wyngaertdruyf</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">O dry-mael soeter, soeter, <rhyme label="f" type="f">soeter</rhyme></l>
        <l id="s1:l13" met="3" type="-+">Naem als <rhyme label="g" type="m">Honingh-raet</rhyme>,</l>
        <l id="s1:l14" met="5" type="-+">O Naem die alle soet te - boven <rhyme label="g" type="m" corresp="#s1:l13">gaet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Beschryft ô Jesu myn <rhyme label="a" type="m">ghemoet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met 't purper van uw <rhyme label="a" type="m" corresp="#s2:l1">Bloedt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En druckt uwen Naem <rhyme label="b" type="m">daer-in</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dan sal ick eens gaen <rhyme label="c" type="f">beginnen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Te voelen in myn' <rhyme label="c" type="f" corresp="#s2:l4">sinnen</rhyme></l>
        <l id="s2:l6" met="1" type="-+">Van <rhyme label="c" type="f" corresp="#s2:l4">binnen</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Hoe soet dat smaeckt uw' lieve <rhyme label="b" type="m" corresp="#s2:l3">Min</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Dan sal ick heel myn <rhyme label="d" type="f">leven</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Aen uwe Liefde <rhyme label="d" type="f" corresp="#s2:l8">gheven</rhyme></l>
        <l id="s2:l10" met="4" type="-+">Al wat ick peys met hert' oft <rhyme label="e" type="m">sin</rhyme></l>
        <l id="s2:l11" met="4" type="+-">Sal wesen van uw' soete <rhyme label="e" type="m" corresp="#s2:l10">Min</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">Waer dat ick gaen, oft staen, <rhyme label="f" type="f">wat</rhyme></l>
        <l id="s2:l13" met="3" type="-+">dat ick voel, oft vreugt, oft <rhyme label="g" type="m">pyn</rhyme>,</l>
        <l id="s2:l14" met="5" type="-+">'t Sal al om Jesus soete Liefde <rhyme label="g" type="m" corresp="#s2:l13">zyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
