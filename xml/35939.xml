    <melody>O mens ellendig onberadig</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Mensch ellendigh, <rhyme label="a" type="f">onberadigh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Waerom valt ghy u ziel soo <rhyme label="a" type="f" corresp="#s1:l1">schadig</rhyme>?</l>
        <l id="s1:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s1:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s1:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s1:l3">Helaes</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat baet veel eten ofte <rhyme label="a" type="f">drincken</rhyme>?</l>
        <l id="s2:l2" met="4" type="-+">Den wijn met volle bekers <rhyme label="a" type="f" corresp="#s2:l1">schincken</rhyme>?</l>
        <l id="s2:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s2:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s2:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s2:l3">Helaes</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">V wel-lust en ghenucht is <rhyme label="a" type="f">singhen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Veel spelen, danssen, ende <rhyme label="a" type="f" corresp="#s3:l1">springhen</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s3:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s3:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s3:l3">Helaes</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die Masschers, Fluyten en <rhyme label="a" type="f">Violen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">‘t Sot minne-spel dat doet u <rhyme label="a" type="f" corresp="#s4:l1">dolen</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s4:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s4:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s4:l3">Helaes</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Noch goet, noch vrient en sal u <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Als u dit leven sal <rhyme label="a" type="f" corresp="#s5:l1">verlaten</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s5:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s5:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s5:l3">Helaes</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hebt van de doodt in u <rhyme label="a" type="f">ghedachten</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Oft onversiens sals’u <rhyme label="a" type="f" corresp="#s6:l1">versmachten</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s6:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s6:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s6:l3">Helaes</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die doodts ghedachten altijt <rhyme label="a" type="f">blamen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Het helsche vier dat sal haer <rhyme label="a" type="f" corresp="#s7:l1">pramen</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s7:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s7:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s7:l3">Helaes</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">D’hant Godts en condy niet <rhyme label="a" type="f">ontloopen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">De ziel sal’t dan alleen <rhyme label="a" type="f" corresp="#s8:l1">becoopen</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s8:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s8:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s8:l3">Helaes</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wee, wee die valt in ‘sRechters <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Eeuwigh sal hy in vlammen <rhyme label="a" type="f" corresp="#s9:l1">branden</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s9:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s9:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s9:l3">Helaes</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O ziel! o ziel! o aerme <rhyme label="a" type="f">zielen</rhyme>!</l>
        <l id="s10:l2" met="4" type="-+">Hoe sal u ’t helsche vier <rhyme label="a" type="f" corresp="#s10:l1">vernielen</rhyme>!</l>
        <l id="s10:l3" met="2" type="-+">Helaes, o <rhyme label="b" type="m">dwaes</rhyme>!</l>
        <l id="s10:l4" met="5" type="+-">De felle snelle doodt die comt soo <rhyme label="c" type="m">ras</rhyme>.</l>
        <l id="s10:l5" met="1" type="-+"><rhyme label="b" type="m" corresp="#s10:l3">Helaes</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
