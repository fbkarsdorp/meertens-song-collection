    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ZAligh leeft hy byden <rhyme label="a" type="f">menschen</rhyme>:</l>
        <l id="s1:l2" met="4" type="+-">Die met herten God <rhyme label="b" type="m">betrouwt</rhyme>.</l>
        <l id="s1:l3" met="4" type="+-">Diens verkiezen, wil, noch <rhyme label="a" type="f" corresp="#s1:l1">wenschen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Niet en zoeckt dat na <rhyme label="b" type="m" corresp="#s1:l2">berouwt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Maar hert en wil ghelaten <rhyme label="b" type="m" corresp="#s1:l2">hout</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">En volght den wil des <rhyme label="c" type="f">Heren</rhyme>.</l>
        <l id="s1:l7" met="1" type="-+">Dees <rhyme label="d" type="m">lyt</rhyme></l>
        <l id="s1:l8" met="1" type="-+">En <rhyme label="d" type="m" corresp="#s1:l7">mydt</rhyme>.</l>
        <l id="s1:l9" met="1" type="-+">Hy <rhyme label="d" type="m" corresp="#s1:l7">lyt</rhyme></l>
        <l id="s1:l10" met="1" type="-+">Goods <rhyme label="e" type="m">daad</rhyme></l>
        <l id="s1:l11" met="1" type="+-">En <rhyme label="d" type="m" corresp="#s1:l7">mydt</rhyme></l>
        <l id="s1:l12" met="1" type="-+">het <rhyme label="e" type="m" corresp="#s1:l10">quaad</rhyme></l>
        <l id="s1:l13" met="4" type="-+">Dus magh hem hier gheen onrust <rhyme label="c" type="f" corresp="#s1:l6">deren</rhyme>.</l>
