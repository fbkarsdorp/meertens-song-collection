  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk roep u Hemelsche Vader <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Vertroost ons in dit <rhyme label="b" type="f">lyden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">En wilt ons in noot <rhyme label="a" type="m" corresp="#s1:l1">bystaen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van alle quaet <rhyme label="b" type="f" corresp="#s1:l2">bevrijden</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Want den vyant // aen elcken <rhyme label="c" type="m">kant</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Die is bevaen met <rhyme label="b" type="f" corresp="#s1:l2">nyden</rhyme></l>
        <l id="s1:l7" met="4" type="-+">O Godt vailjant // biet ons de <rhyme label="c" type="m" corresp="#s1:l5">hant</rhyme></l>
        <l id="s1:l8" met="2" type="-+">En helpt ons <rhyme label="b" type="f" corresp="#s1:l2">stryden</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dat selfde dat int <rhyme label="a" type="m">Paradijs</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Heeft gemaeckt groot <rhyme label="b" type="f">onvrede</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Tverderf des Heeren werck <rhyme label="a" type="m" corresp="#s2:l1">propijs</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Wt nijt wast dat hy 't <rhyme label="b" type="f" corresp="#s2:l2">dede</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Listich bedocht // Eva <rhyme label="c" type="m">gebrocht</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Tot <rhyme label="b" type="f" corresp="#s2:l2">twijffelmoedighede</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Dat hy versocht // heeft zy <rhyme label="c" type="m" corresp="#s2:l5">gewrocht</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Adam oock <rhyme label="b" type="f" corresp="#s2:l2">mede</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Aldus quamen zy in de <rhyme label="a" type="m">doot</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Door leugenachtich <rhyme label="b" type="f">dichten</rhyme></l>
        <l id="s3:l3" met="4" type="-+">En alle menschen heeft hy <rhyme label="a" type="m" corresp="#s3:l1">bloot</rhyme></l>
        <l id="s3:l4" met="3" type="-+">gewont als arm <rhyme label="b" type="f" corresp="#s3:l2">wichten</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Met groot gewelt // hy hem nu <rhyme label="c" type="m">stelt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Schiet zijn pylen oft <rhyme label="b" type="f" corresp="#s3:l2">schichten</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Hoe hy ons quelt // O goeden <rhyme label="c" type="m" corresp="#s3:l5">Helt</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Wilt ons <rhyme label="b" type="f" corresp="#s3:l2">verlichten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daer na heeft hy Cain <rhyme label="a" type="m">verweckt</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Zijn broeder te <rhyme label="b" type="f">vermoorden</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Die beter was dan hy <rhyme label="a" type="m" corresp="#s4:l1">perfeckt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Met also luttel <rhyme label="b" type="f" corresp="#s4:l2">woorden</rhyme></l>
        <l id="s4:l5" met="4" type="-+">dat volc onvroet // tot haer <rhyme label="c" type="m">behoet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Noe oock niet en <rhyme label="b" type="f" corresp="#s4:l2">hoorden</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Om te doen boet // maer de <rhyme label="c" type="m" corresp="#s4:l5">Sentvloet</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Quam, en <rhyme label="b" type="f" corresp="#s4:l2">versmoorden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den Sodamitischen bosen <rhyme label="a" type="m">aert</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Quelde Loth <rhyme label="b" type="f">goedertieren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">En Gods Enghel hoogh <rhyme label="a" type="m" corresp="#s5:l1">vermaert</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die Loth soude <rhyme label="b" type="f" corresp="#s5:l2">logieren</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Zy quamen mal // met groot <rhyme label="c" type="m">getal</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En wildense <rhyme label="b" type="f" corresp="#s5:l2">schoffieren</rhyme></l>
        <l id="s5:l7" met="4" type="-+">God straftse al // die haer so <rhyme label="c" type="m" corresp="#s5:l5">qual</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Met Peck en <rhyme label="b" type="f" corresp="#s5:l2">Vieren</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dat was Israel groot <rhyme label="a" type="m">verdriet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dat den strijt quam van <rhyme label="b" type="f">binnen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Daer toe dat Satanas wel <rhyme label="a" type="m" corresp="#s6:l1">riet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Door vleesschelijcke <rhyme label="b" type="f" corresp="#s6:l2">zinnen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Corach Dathan // en <rhyme label="c" type="m">Abiram</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Gingen oproer <rhyme label="b" type="f" corresp="#s6:l2">beginnen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Gods toren gram // dat volc wech <rhyme label="c" type="m" corresp="#s6:l5">nam</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Datmen sach <rhyme label="b" type="f" corresp="#s6:l2">dinnen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die vier hondert Propheten <rhyme label="a" type="m">Bael</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Zy deden grote <rhyme label="b" type="f">schade</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En brochten Israel in <rhyme label="a" type="m" corresp="#s7:l1">dwael</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En in Gods <rhyme label="b" type="f" corresp="#s7:l2">ongenade</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Elias snel // was by haer <rhyme label="c" type="m">wel</rhyme></l>
        <l id="s7:l6" met="3" type="-+">gescholden als de <rhyme label="b" type="f" corresp="#s7:l2">quade</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Die Israel // verwerrede <rhyme label="c" type="m" corresp="#s7:l5">fel</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Door zynen <rhyme label="b" type="f" corresp="#s7:l2">dade</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Den man Gods die van Juda <rhyme label="a" type="m">ging</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Na Bethel <rhyme label="b" type="f">Prophiteren</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Van Godt hy een bevel <rhyme label="a" type="m" corresp="#s8:l1">ontfijngh</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Ghy sult niet weder <rhyme label="b" type="f" corresp="#s8:l2">keeren</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Door desen padt // noch water <rhyme label="c" type="m">nat</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Gheen broot sult ghy <rhyme label="b" type="f" corresp="#s8:l2">begeeren</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Hy overtradt // ende quam <rhyme label="c" type="m" corresp="#s8:l5">rat</rhyme></l>
        <l id="s8:l8" met="2" type="-+">In groot <rhyme label="b" type="f" corresp="#s8:l2">verseeren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Eenen Prophete uyt der <rhyme label="a" type="m">stadt</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Reet hem na op de <rhyme label="b" type="f">wegen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Daer hy onder een Eycke <rhyme label="a" type="m" corresp="#s9:l1">sadt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Heeft hy hem in <rhyme label="b" type="f" corresp="#s9:l2">ghecregen</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Ic ben, sprack hy // so wel als <rhyme label="c" type="m">ghy</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Een Prophete ter <rhyme label="b" type="f" corresp="#s9:l2">degen</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Een Engel vry // sprack keert met <rhyme label="c" type="m" corresp="#s9:l5">my</rhyme></l>
        <l id="s9:l8" met="2" type="-+">Hy stont niet <rhyme label="b" type="f" corresp="#s9:l2">tegen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Doe hy tot den Prophete <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Aen tafel was <rhyme label="b" type="f">gheseten</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">So quam des Heeren woort tot <rhyme label="a" type="m" corresp="#s10:l1">hem</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Doe hy hadde <rhyme label="b" type="f" corresp="#s10:l2">ge-eten</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Al van dat broot // dat Godt <rhyme label="c" type="m">verboot</rhyme></l>
        <l id="s10:l6" met="3" type="-+">So liet hy hem dat <rhyme label="b" type="f" corresp="#s10:l2">weten</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Van een Leeu groot // sult gy in <rhyme label="c" type="m" corresp="#s10:l5">noot</rhyme></l>
        <l id="s10:l8" met="2" type="-+">Doot sijn <rhyme label="b" type="f" corresp="#s10:l2">gebeten</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Den Leeu daer Petrus af <rhyme label="a" type="m">vermelt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Gaet om ons sonder <rhyme label="b" type="f">falen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Die hem niet cloeck tegen en <rhyme label="a" type="m" corresp="#s11:l1">stelt</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Die brengt hy tot <rhyme label="b" type="f" corresp="#s11:l2">schandalen</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">want hy verleyt // veel volck <rhyme label="c" type="m">planteyt</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Die van de wegen <rhyme label="b" type="f" corresp="#s11:l2">dwalen</rhyme>:</l>
        <l id="s11:l7" met="4" type="-+">Blyft in waerheyt // goeden <rhyme label="c" type="m" corresp="#s11:l5">arbeyt</rhyme></l>
        <l id="s11:l8" met="2" type="-+">Sal Godt <rhyme label="b" type="f" corresp="#s11:l2">betalen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Met Caleb wilt in, <rhyme label="a" type="m">ouderdom</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Vercloecken en <rhyme label="b" type="f">verfrayen</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Staet tegen alle stormen <rhyme label="a" type="m" corresp="#s12:l1">vrom</rhyme></l>
        <l id="s12:l4" met="3" type="-+">En laet u niet <rhyme label="b" type="f" corresp="#s12:l2">bewaeyen</rhyme></l>
        <l id="s12:l5" met="4" type="-+">blyft op den voet // der waerheyt <rhyme label="c" type="m">soet</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Laet u so licht niet <rhyme label="b" type="f" corresp="#s12:l2">paeyen</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Wat datmen doet // t' zy quaet of <rhyme label="c" type="m" corresp="#s12:l5">goet</rhyme></l>
        <l id="s12:l8" met="2" type="-+">Dat salmen <rhyme label="b" type="f" corresp="#s12:l2">mayen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Paulus dede een schoon <rhyme label="a" type="m">vermaen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Tot d' Ouders van <rhyme label="b" type="f">Ephesen</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Hoe dat na sijn afscheyt sou <rhyme label="a" type="m" corresp="#s13:l1">gaen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Dat heeft hy wel <rhyme label="b" type="f" corresp="#s13:l2">bewesen</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Dat mannen daer // verkeert <rhyme label="c" type="m">onclaer</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Opstaen souden nae <rhyme label="b" type="f" corresp="#s13:l2">desen</rhyme></l>
        <l id="s13:l7" met="4" type="-+">Op dat zy gaer // trocken tot <rhyme label="c" type="m" corresp="#s13:l5">haer</rhyme></l>
        <l id="s13:l8" met="2" type="-+">Gods volck <rhyme label="b" type="f" corresp="#s13:l2">gepresen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Och Heere doet wel aen <rhyme label="a" type="m">Syon</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Wilt opbouwen haer <rhyme label="b" type="f">meuren</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Datter geen Vossen schade en <rhyme label="a" type="m" corresp="#s14:l1">doen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Noch rancken en <rhyme label="b" type="f" corresp="#s14:l2">verscheuren</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">T' is nu den tijt // met cleen <rhyme label="c" type="m">jolijt</rhyme></l>
        <l id="s14:l6" met="3" type="-+">Datter veel moeten <rhyme label="b" type="f" corresp="#s14:l2">treuren</rhyme></l>
        <l id="s14:l7" met="4" type="-+">Door 's duyvels nijt // crijgen wy <rhyme label="c" type="m" corresp="#s14:l5">sryt</rhyme></l>
        <l id="s14:l8" met="2" type="-+">Met groot <rhyme label="b" type="f" corresp="#s14:l2">versteuren</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Princelyck Godt eeuwich en <rhyme label="a" type="m">recht</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Helpt Syon 't velt <rhyme label="b" type="f">behouwen</rhyme>.</l>
        <l id="s15:l3" met="4" type="-+">Sy wort van allen zijden <rhyme label="a" type="m" corresp="#s15:l1">belecht</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Van haer diese <rhyme label="b" type="f" corresp="#s15:l2">benouwen</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Dees werelts Godt // met al zijn <rhyme label="c" type="m">rot</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Doet Syon nu veel <rhyme label="b" type="f" corresp="#s15:l2">rouwen</rhyme></l>
        <l id="s15:l7" met="4" type="-+">Sy wort bespot // datse u <rhyme label="c" type="m" corresp="#s15:l5">gebodt</rhyme></l>
        <l id="s15:l8" met="2" type="-+">Hout sonder <rhyme label="b" type="f" corresp="#s15:l2">flouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
