  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">KAn de Zee zyn sonder <rhyme label="a" type="f">baren</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Kan het mensche leven <rhyme label="b" type="m">zyn</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Sonder droevighe <rhyme label="a" type="f" corresp="#s1:l1">ghevaren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Sonder quellingh ende <rhyme label="b" type="m" corresp="#s1:l2">pyn</rhyme>?</l>
        <l id="s1:l5" met="4" type="+-">Kan hier zyn soo goeden <rhyme label="c" type="m">tydt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Die bevrydt is van den <rhyme label="c" type="m" corresp="#s1:l5">strydt</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Niemants vyant en sal <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Eer dat sterft syn eygen <rhyme label="b" type="m">vleesch</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Niemant en sal peys <rhyme label="a" type="f" corresp="#s2:l1">verwerven</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Ende leven sonder <rhyme label="b" type="m" corresp="#s2:l2">vrees</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Niemant komt van d'oorlogh <rhyme label="c" type="m">af</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Eer dat hy rust in het <rhyme label="c" type="m" corresp="#s2:l5">graf</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Soo van buyten als van <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Valt my mynen vyandt <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En hy soeckt my te <rhyme label="a" type="f" corresp="#s3:l1">verwinnen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">En myn Ziel te doen <rhyme label="b" type="m" corresp="#s3:l2">vergaen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">'t Is hier altydt <rhyme label="c" type="m">Oorelogh</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Soeten Jesu helpt my <rhyme label="c" type="m" corresp="#s3:l5">togh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Helpt my soeten Jesu <rhyme label="a" type="f">stryden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Komt met my voor my te <rhyme label="b" type="m">veldt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Want ick word' van alle <rhyme label="a" type="f" corresp="#s4:l1">zyden</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Van het vyandts heyr <rhyme label="b" type="m" corresp="#s4:l2">ghequelt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Jesu ick hebb' u van <rhyme label="c" type="m">doen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Helpt my vromen <rhyme label="c" type="m" corresp="#s4:l5">Campioen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Soo gy Heere der <rhyme label="a" type="f">heyr-krachten</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Met my komen wilt te <rhyme label="b" type="m">veldt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Sal ick 't vyandts-heyr <rhyme label="a" type="f" corresp="#s5:l1">verachten</rhyme></l>
        <l id="s5:l4" met="4" type="+-">En versmachten syn <rhyme label="b" type="m" corresp="#s5:l2">ghewelt</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Dat de Hel vecht teghen <rhyme label="c" type="m">my</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Als ick u hebb' aen myn <rhyme label="c" type="m" corresp="#s5:l5">zy</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als ick Jesus naem mag <rhyme label="a" type="f">dragen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">In de plaets' van eenen <rhyme label="b" type="m">schilt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dan sal ick naer niemandt <rhyme label="a" type="f" corresp="#s6:l1">vragen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Komt dan teghen my die <rhyme label="b" type="m" corresp="#s6:l2">wilt</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Dat de Hel komt teghen <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Jesus naem die maeckt my <rhyme label="c" type="m" corresp="#s6:l5">vry</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Naer myn vechten, kappen, <rhyme label="a" type="f">schieten</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Hop' ick naermaels een schoon <rhyme label="b" type="m">Kroon</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">'k Hop' naer wercken te <rhyme label="a" type="f" corresp="#s7:l1">genieten</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Rust en loon in s'Hemels <rhyme label="b" type="m" corresp="#s7:l2">throon</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Naer den Oorlogh hop' ick <rhyme label="c" type="m">Peys</rhyme></l>
        <l id="s7:l6" met="4" type="+-">In het Hemels <rhyme label="c" type="m" corresp="#s7:l5">Paradys</rhyme>.</l>
      </lg>
    </lg>
  </text>
