  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ic sie die mergen <rhyme label="a" type="f">steerne</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Jhesus claer <rhyme label="b" type="m">aenschyn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">hi weckede my mit <rhyme label="c" type="f">liden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">danck hebbe die here <rhyme label="b" type="m" corresp="#s1:l2">myn</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat is daer dat my <rhyme label="a" type="f">wecket</rhyme></l>
        <l id="s2:l2" met="3" type="-+">endemy niet slapen en <rhyme label="b" type="m">laet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">ic wyl die werlt <rhyme label="c" type="f">laten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">ende al hoer <rhyme label="b" type="m" corresp="#s2:l2">toeuerlaet</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dat byn ic rydder <rhyme label="a" type="f">coene</rhyme></l>
        <l id="s3:l2" met="3" type="-+">een heer die voer v <rhyme label="b" type="m">stryt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">wanneer wyldi my <rhyme label="c" type="f">loenen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">al mynen <rhyme label="b" type="m" corresp="#s3:l2">arbeyt</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghenade here <rhyme label="a" type="f">genade</rhyme></l>
        <l id="s4:l2" met="3" type="-+">siet aen uwes selues <rhyme label="b" type="m">lot</rhyme></l>
        <l id="s4:l3" met="3" type="-+">ic solde v gaerne <rhyme label="c" type="f">dienen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">condyc of mochtyc <rhyme label="b" type="m" corresp="#s4:l2">noch</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Het geet vast aen een <rhyme label="a" type="f">eynde</rhyme></l>
        <l id="s5:l2" met="3" type="-+">hoe geerne waer ic <rhyme label="b" type="m">daer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Daer ic mit claeren <rhyme label="c" type="f">bekennen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">die waerheit mochte <rhyme label="b" type="m" corresp="#s5:l2">verstaen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O ziele gy staet soe <rhyme label="a" type="f">stylle</rhyme></l>
        <l id="s6:l2" met="3" type="-+">gy en comet my niet soe <rhyme label="b" type="m">nae</rhyme></l>
        <l id="s6:l3" met="3" type="-+">dat gy mit claren <rhyme label="c" type="f">bekennen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">die  waerheit mochte <rhyme label="b" type="m" corresp="#s6:l2">verstaen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O ziele gi staet soe <rhyme label="a" type="f">stylle</rhyme></l>
        <l id="s7:l2" met="3" type="-+">gy en comet my niet soe <rhyme label="b" type="m">nae</rhyme></l>
        <l id="s7:l3" met="3" type="-+">dat gy mit claren <rhyme label="c" type="f">bekennen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">die waerheit mochte <rhyme label="b" type="m" corresp="#s7:l2">verstaen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghenade here <rhyme label="a" type="f">genaede</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Och lieue here <rhyme label="b" type="m">myn</rhyme></l>
        <l id="s8:l3" met="3" type="-+">ic solde soe geerne <rhyme label="c" type="f">volbrengen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">den liefsten willen <rhyme label="b" type="m" corresp="#s8:l2">dyn</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Och ziele lieue <rhyme label="a" type="f">ziele</rhyme></l>
        <l id="s9:l2" met="3" type="-+">nv doet den willen <rhyme label="b" type="m">myn</rhyme></l>
        <l id="s9:l3" met="3" type="-+">bauen alle gescapen <rhyme label="c" type="f">dyngen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">suldi die liefste <rhyme label="b" type="m" corresp="#s9:l2">syn</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Sal ic bauen allen <rhyme label="a" type="f">dyngen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">die alre liefste <rhyme label="b" type="m">syn</rhyme></l>
        <l id="s10:l3" met="3" type="-+">soe drage ic v op myn <rhyme label="c" type="f">wesen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">want here dat is doch <rhyme label="b" type="m" corresp="#s10:l2">dyn</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Och dat een gheestelic <rhyme label="a" type="f">herte</rhyme></l>
        <l id="s11:l2" met="3" type="-+">hem soe becommert in deser <rhyme label="b" type="m">tyt</rhyme></l>
        <l id="s11:l3" met="3" type="-+">dat god of syne <rhyme label="c" type="f">genade</rhyme></l>
        <l id="s11:l4" met="3" type="-+">geen stede in hem en <rhyme label="b" type="m" corresp="#s11:l2">vynt</rhyme></l>
      </lg>
    </lg>
