    <melody>Psalm 068 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O HEER waerom treet ghy soo <rhyme label="a" type="m">veer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">End in der Noot verbercht u <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat d'Armen moeten <rhyme label="b" type="f">lijden</rhyme>?</l>
        <l id="s1:l4" met="4" type="-+">So lang' die Godloos t'voordeel <rhyme label="c" type="m">houdt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Bedrijft hy synen Moetwil <rhyme label="c" type="m" corresp="#s1:l4">stout</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Soo hijt voor neemt met <rhyme label="b" type="f" corresp="#s1:l3">nijden</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Die Godloos roemt hem, en met <rhyme label="d" type="m">spot</rhyme></l>
        <l id="s1:l8" met="4" type="-+">(Soot hem gelust) blameert hy <rhyme label="d" type="m" corresp="#s1:l7">Godt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">En geeft hem selffs den <rhyme label="e" type="f">Seghen</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Soo lang' als gaet syn Toorn <rhyme label="f" type="m">voort</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Vraecht hy nae niemandts straff noch <rhyme label="f" type="m" corresp="#s1:l10">woort</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Tsyn Godloos zijn <rhyme label="e" type="f" corresp="#s1:l9">Aenslagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met gramschap hy syn saeck <rhyme label="a" type="m">doordraecht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Nae dijn Ghericht hy niet en <rhyme label="a" type="m" corresp="#s2:l1">vraecht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hy trotzet syn <rhyme label="b" type="f">Vyanden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">End' in syn Hert hy spreeckt: ter <rhyme label="c" type="m">neer</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Werd ick ghestooten <rhyme label="c" type="m" corresp="#s2:l4">nimmermeer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Daer is gheen Noot <rhyme label="b" type="f" corresp="#s2:l3">voorhanden</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Sijn mont vol List en Vloeckens <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Bedroch syn Tongh wtrechtend' <rhyme label="d" type="m" corresp="#s2:l7">is</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Versiert maer t'quaet <rhyme label="e" type="f">alleyne</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Hy sitt en loert in Hoven <rhyme label="f" type="m">goet</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Verworcht secreet t'onschuldich <rhyme label="f" type="m" corresp="#s2:l10">bloet</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Welck hy acht al te <rhyme label="e" type="f" corresp="#s2:l9">cleyne</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sijn Oogen hebben vlijtich <rhyme label="a" type="m">acht</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Op d'armen die hy steets na <rhyme label="a" type="m" corresp="#s3:l1">tracht</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En loeret int <rhyme label="b" type="f">verborghen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ghelijck int hol een Leeuwe <rhyme label="c" type="m">doet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">So staet hy nae der Armen <rhyme label="c" type="m" corresp="#s3:l4">Bloet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Des avondts end' des <rhyme label="b" type="f" corresp="#s3:l3">morghen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Als hyse heeft ghebracht int <rhyme label="d" type="m">net</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Met macht hy dan se heel <rhyme label="d" type="m" corresp="#s3:l7">verplet</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Gaet met ghewelt die <rhyme label="e" type="f">eten</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Want dus seyt hy int herte <rhyme label="f" type="m">al</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Godt nimmermeer dit sien en <rhyme label="f" type="m" corresp="#s3:l10">sal</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Maer heeft het al <rhyme label="e" type="f" corresp="#s3:l9">vergheten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Siet op Heer Godt, verheft u <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Doet uw' Ellendighen <rhyme label="a" type="m" corresp="#s4:l1">bystandt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">In hare Cruys en <rhyme label="b" type="f">smerte</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die Godloos, waerom soud' hy <rhyme label="c" type="m">doch</rhyme></l>
        <l id="s4:l5" met="4" type="-+">(Ghy vraecht na haer niet) spreken <rhyme label="c" type="m" corresp="#s4:l4">noch</rhyme></l>
        <l id="s4:l6" met="3" type="-+">En lastren u int <rhyme label="b" type="f" corresp="#s4:l3">herte</rhyme>?</l>
        <l id="s4:l7" met="4" type="-+">Ghy siet d'ellende druck en <rhyme label="d" type="m">smert</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Welck in u handt ghegheven <rhyme label="d" type="m" corresp="#s4:l7">wert</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">En d'Armen u toe <rhyme label="e" type="f">stellen</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Want ghy der Weesen Helper <rhyme label="f" type="m">zijt</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Breeckt des Godloosen list <rhyme label="f" type="m" corresp="#s4:l10">subijt</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Syn macht wilt neder <rhyme label="e" type="f" corresp="#s4:l9">vellen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Versoeckt des Boosen syn <rhyme label="a" type="m">misdaet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">So sal syn godloos wesen <rhyme label="a" type="m" corresp="#s5:l1">quaet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gheheel zijn wech <rhyme label="b" type="f">ghenomen</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">De HEER is Coninck <rhyme label="c" type="m">Eewichlijck</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Die Heyden sullen all' <rhyme label="c" type="m" corresp="#s5:l4">ghelijck</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Wt synen Land' om <rhyme label="b" type="f" corresp="#s5:l3">comen</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">HEER ghy verhoort d'Elenden <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Haer Hert hem t'uwaerts weynden <rhyme label="d" type="m" corresp="#s5:l7">sal</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Dat daer dijn Oor op <rhyme label="e" type="f">mercke</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Den armen Weesen doet ghy <rhyme label="f" type="m">recht</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Den boosen Mensch ghy so <rhyme label="f" type="m" corresp="#s5:l10">bevecht</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Dat syn Trotz niet meer <rhyme label="e" type="f" corresp="#s5:l9">wercke</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dy HEEre Godt van <rhyme label="a" type="m">Hemelrijck</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Godt Vader en Godt Soon <rhyme label="a" type="m" corresp="#s6:l1">ghelijck</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wy loff end' Eer toe <rhyme label="b" type="f">draghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Godt heylige Geest oock vroech en <rhyme label="c" type="m">laet</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Die ons wil gheven syn <rhyme label="c" type="m" corresp="#s6:l4">Genaed</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En dat niet gantsch <rhyme label="b" type="f" corresp="#s6:l3">vertzaghen</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Die, so die Godloos deerlijck <rhyme label="d" type="m">plaecht</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Van t'eene Landt int ander <rhyme label="d" type="m" corresp="#s6:l7">iaecht</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Tot schimp van uwen <rhyme label="e" type="f">Name</rhyme>.</l>
        <l id="s6:l10" met="4" type="-+">So helpt dan HEER in all' <rhyme label="f" type="m">Elend</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">Standthafftich syn tot aen het <rhyme label="f" type="m" corresp="#s6:l10">End</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">Door JEsum Christus <rhyme label="e" type="f" corresp="#s6:l9">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
