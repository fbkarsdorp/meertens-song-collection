  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Liefsten vriendinne, uyt <rhyme label="a" type="f">minne</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Met blyden zinne, nu ter <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Bringhen wy hier daer ghy <rhyme label="b" type="m" corresp="#s1:l2">syt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Den schoonen Mey <rhyme label="b" type="m" corresp="#s1:l2">ghebenedijdt</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Eenen Mey seer <rhyme label="c" type="m">soet</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Waer aen t'eeuwich <rhyme label="c" type="m" corresp="#s1:l5">goet</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Heeft ghestort syn <rhyme label="c" type="m" corresp="#s1:l5">bloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wilt hem aenschouwen, en <rhyme label="a" type="f">houwen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Ter goeder trouwen, soo ghy <rhyme label="b" type="m">meucht</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hy sal maecken u <rhyme label="b" type="m" corresp="#s2:l2">verheught</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dat ghy in pijn sult maecken <rhyme label="b" type="m" corresp="#s2:l2">vreucht</rhyme></l>
        <l id="s2:l5" met="3" type="+-">Want hy doet <rhyme label="c" type="m">voorwaer</rhyme></l>
        <l id="s2:l6" met="3" type="+-">In druck en <rhyme label="c" type="m" corresp="#s2:l5">beswaer</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Wercken <rhyme label="c" type="m" corresp="#s2:l5">wonderbaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy houdt in sneven, en <rhyme label="a" type="f">beven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Den moet verheven, t'allen <rhyme label="b" type="m">stondt</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Van hem wort ons oock <rhyme label="b" type="m" corresp="#s3:l2">ghejont</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dat hy de ziele maeckt <rhyme label="b" type="m" corresp="#s3:l2">ghesont</rhyme>:</l>
        <l id="s3:l5" met="3" type="+-">Sijnde een <rhyme label="c" type="m">Medecijn</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Al op dit <rhyme label="c" type="m" corresp="#s3:l5">termijn</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Voor die syn in <rhyme label="c" type="m" corresp="#s3:l5">pijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt u verblijden, u <rhyme label="a" type="f">strijden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En al u lyden, dat u <rhyme label="b" type="m">raeckt</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Sal van u niet syn <rhyme label="b" type="m" corresp="#s4:l2">ghesmaeckt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ist dat ghy werck van t'Cruyce <rhyme label="b" type="m" corresp="#s4:l2">maeckt</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Syt ghy in dit <rhyme label="c" type="m">wout</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Yvers in <rhyme label="c" type="m" corresp="#s4:l5">benaut</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Desen Mey <rhyme label="c" type="m" corresp="#s4:l5">aenschaut</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghy sult door desen, <rhyme label="a" type="f">ghenesen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Daer by oock wesen, seer <rhyme label="b" type="m">ghestilt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Ghy sult willen dat Godt <rhyme label="b" type="m" corresp="#s5:l2">wilt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Al ist dat hy u pijnt of <rhyme label="b" type="m" corresp="#s5:l2">vilt</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Met een bly <rhyme label="c" type="m">ghelaet</rhyme></l>
        <l id="s5:l6" met="3" type="+-">Of ghy metter <rhyme label="c" type="m" corresp="#s5:l5">daet</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Heel in voorspoet <rhyme label="c" type="m" corresp="#s5:l5">saet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">T'cruyce doet vluchten, ons <rhyme label="a" type="f">duchten</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Jae al ons suchten, en <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">T'doet het comen al op <rhyme label="b" type="m" corresp="#s6:l2">niet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Alsmen ten rechten tot hem <rhyme label="b" type="m" corresp="#s6:l2">vliedt</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">En t'maeckt ons <rhyme label="c" type="m">bereyt</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Door Godts <rhyme label="c" type="m" corresp="#s6:l5">mildicheyt</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Tot de <rhyme label="c" type="m" corresp="#s6:l5">salicheyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Orlof met zeden, wilt <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">den Mey besteden, in u <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Hy sal werren al u <rhyme label="b" type="m" corresp="#s7:l2">smert</rhyme>;</l>
        <l id="s7:l4" met="4" type="-+">Al is sy groot seer swaer en <rhyme label="b" type="m" corresp="#s7:l2">erdt</rhyme>,</l>
        <l id="s7:l5" met="3" type="+-">En ghy sult hier <rhyme label="c" type="m">me</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Gaend' uyt s'werelts <rhyme label="c" type="m" corresp="#s7:l5">ste</rhyme></l>
        <l id="s7:l7" met="3" type="+-">Cryghen d'hemels <rhyme label="c" type="m" corresp="#s7:l5">ure</rhyme>.</l>
      </lg>
    </lg>
  </text>
