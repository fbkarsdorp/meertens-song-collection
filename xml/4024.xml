  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEer Iesus voer ter <rhyme label="a" type="f">sielen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En die goedertieren <rhyme label="b" type="m">weert</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Daer vant hi sijn <rhyme label="c" type="f">gheminde</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van rouwe seer <rhyme label="b" type="m" corresp="#s1:l2">verteert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O dochter lieue <rhyme label="a" type="f">dochter</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wat is v <rhyme label="b" type="m">ghesciet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ende ick om uwen <rhyme label="c" type="f">wille</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Mi seluen cruycen <rhyme label="b" type="m" corresp="#s2:l2">liet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O vader ic mach wel <rhyme label="a" type="f">weenen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ende beyde mijn handen <rhyme label="b" type="m">slaen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Maer dat ic minen edelen <rhyme label="c" type="f">tijt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Verloren hebbe <rhyme label="b" type="m" corresp="#s3:l2">saen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O dochter lieue <rhyme label="a" type="f">dochter</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Laet v dat wesen <rhyme label="b" type="m">leet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Alle mijn grote <rhyme label="c" type="f">ghenadicheyt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die sal v sijn <rhyme label="b" type="m" corresp="#s4:l2">bereet</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Coemt van libvaen mijn <rhyme label="a" type="f">duue</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Coemt hier ghi wort <rhyme label="b" type="m">ghecroont</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Wilt ghi v tot mi <rhyme label="c" type="f">voeghen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ghi wort van mi <rhyme label="b" type="m" corresp="#s5:l2">gheloont</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die coninc van <rhyme label="a" type="f">Ierusalem</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Is sijnder bruyt <rhyme label="b" type="m">ghetrouwe</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Si heeft den paeys ghemaect met <rhyme label="c" type="f">hem</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Die waerde suyuer <rhyme label="b" type="m" corresp="#s6:l2">vrouwe</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hi sant een bode van groter <rhyme label="a" type="f">virtuyt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Tot eenre schoonder <rhyme label="b" type="m">bloemen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Hi bracht der maget een groote <rhyme label="c" type="f">saluyt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Dat was onser alder <rhyme label="b" type="m" corresp="#s7:l2">vromen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die bode daelde neder <rhyme label="a" type="f">onuersaecht</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Al totter waerder <rhyme label="b" type="m">reyne</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Hi seyde God groet v suyuer <rhyme label="c" type="f">maecht</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Vol gratien sijt ghi <rhyme label="b" type="m" corresp="#s8:l2">alleyne</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Die maghet wert swaer in haer <rhyme label="a" type="f">ghedochte</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Ende si en sprac niet een enckel <rhyme label="b" type="m">woert</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Ende si peysde wat dit bedieden <rhyme label="c" type="f">mochte</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Die groete en hadde si noyt <rhyme label="b" type="m" corresp="#s9:l2">ghehoort</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Die engel sprac der maget <rhyme label="a" type="f">toe</rhyme></l>
        <l id="s10:l2" met="3" type="-+">En ontsiet v niet reyn edel <rhyme label="b" type="m">vat</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Het is des heeren wil <rhyme label="c" type="f">alsoe</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Ende ghi sult worden sconinx <rhyme label="b" type="m" corresp="#s10:l2">stat</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Die opperste heer sal in v <rhyme label="a" type="f">dalen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">O weerde suuer lelie <rhyme label="b" type="m">fijin</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Hi salt ransoen alleen <rhyme label="c" type="f">betalen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Met sijn groote bitter <rhyme label="b" type="m" corresp="#s11:l2">pijn</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Die maecht antwoerde <rhyme label="a" type="f">ootmoedelijck</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Si was bescaemt in haren <rhyme label="b" type="m">sin</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Dat mi ontbiet die coninck <rhyme label="c" type="f">rijck</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Daer consentere ic blidelijc <rhyme label="b" type="m" corresp="#s12:l2">in</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Die engel doe van dare <rhyme label="a" type="f">schiet</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Die weerde maecht bleef sonder <rhyme label="b" type="m">vare</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Haer herteken dat bleef sonder <rhyme label="c" type="f">verdreit</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Tuycht ons scrifture <rhyme label="b" type="m" corresp="#s13:l2">openbare</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
