  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Nu wy hier moeten <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van een op dit <rhyme label="b" type="m">termijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Gods Gheest wil ons <rhyme label="a" type="f" corresp="#s1:l1">gheleyden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En ons berader <rhyme label="b" type="m" corresp="#s1:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En als wy dan nae <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ghescheyden zijn van <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Soo laet ons doch Godt <rhyme label="a" type="f" corresp="#s2:l1">vresen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In’t leven al <rhyme label="b" type="m" corresp="#s2:l2">ghemeen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En houden in <rhyme label="a" type="f">ghedachten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het lieffelijck <rhyme label="b" type="m">vermaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En neerstelijck <rhyme label="a" type="f" corresp="#s3:l1">betrachten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dat wy hebben <rhyme label="b" type="m" corresp="#s3:l2">verstaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Souden wy gaen <rhyme label="a" type="f">vergheten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat hier nu is <rhyme label="b" type="m">gheschiet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wat soud’ ons dan het <rhyme label="a" type="f" corresp="#s4:l1">weten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Baten? met allen <rhyme label="b" type="m" corresp="#s4:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghenuechde die wy <rhyme label="a" type="f">vaten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Deur ons liefs Heeren <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ist dat wy hem <rhyme label="a" type="f" corresp="#s5:l1">verlaten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wat salt ons helpen <rhyme label="b" type="m" corresp="#s5:l2">voort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En daerom houdt in <rhyme label="a" type="f">hoede</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dees deuchden <rhyme label="b" type="m">allegaer</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Die ons nu zijn te <rhyme label="a" type="f" corresp="#s6:l1">goede</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Voortbrocht int <rhyme label="b" type="m" corresp="#s6:l2">openbaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">T’moet nu ghescheyden <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ten is ons gheen <rhyme label="b" type="m">jolijt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Adieu vrienden <rhyme label="a" type="f" corresp="#s7:l1">ghepresen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Tot op een ander <rhyme label="b" type="m" corresp="#s7:l2">tijt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ons bycomst moet <rhyme label="a" type="f">gheschieden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Met vreucht alst Godt <rhyme label="b" type="m">behaeght</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Adieu ghy lieve <rhyme label="a" type="f" corresp="#s8:l1">lieden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">V doch vromelijck <rhyme label="b" type="m" corresp="#s8:l2">draeght</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Nu wy met den <rhyme label="a" type="f">lichame</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Scheyden, laet u <rhyme label="b" type="m">ghemoet</rhyme></l>
        <l id="s9:l3" met="3" type="-+">By ons blijven <rhyme label="a" type="f" corresp="#s9:l1">bequame</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">D’ons’ blijft oock by u <rhyme label="b" type="m" corresp="#s9:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Int lest sonder <rhyme label="a" type="f">vermincken</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Zijnde in u <rhyme label="b" type="m">ghebet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Soo wilt onser <rhyme label="a" type="f" corresp="#s10:l1">ghedincken</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Vyerichlijck <rhyme label="b" type="m" corresp="#s10:l2">onbelet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Scheyden doet ons nu <rhyme label="a" type="f">trueren</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Het schijnt ons heel <rhyme label="b" type="m">onsacht</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Adieu tot desen <rhyme label="a" type="f" corresp="#s11:l1">uren</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Godt gheef u goeden <rhyme label="b" type="m" corresp="#s11:l2">nacht</rhyme>.</l>
      </lg>
    </lg>
  </text>
