  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LEstmael sagh, ick Dirick <rhyme label="a" type="f">danssen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dirick die was wel <rhyme label="b" type="m">gemoet</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Want hy quam rechts van het <rhyme label="a" type="f" corresp="#s1:l1">schranssen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Daer hy vondt 't gelagh hem <rhyme label="b" type="m" corresp="#s1:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Onder eene groene <rhyme label="a" type="f">Linde</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Daer den Krans was <rhyme label="b" type="m">op-gerecht</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Vondt hy Lys sijn wel <rhyme label="a" type="f" corresp="#s2:l1">beminde</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Met Claes Thenis haeren <rhyme label="b" type="m" corresp="#s2:l2">knecht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dirick die half was <rhyme label="a" type="f">beschoncken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Vatten Lys strax by de <rhyme label="b" type="m">hant</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En den Bas de lustigh <rhyme label="a" type="f" corresp="#s3:l1">roncken</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Maer, hem haest bedrogen <rhyme label="b" type="m" corresp="#s3:l2">vant</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Door sijn springen, en sijn <rhyme label="a" type="f">mallen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Lys, en Dirick <rhyme label="b" type="m">ongedacht</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Zyn met 't gat om hoogh <rhyme label="a" type="f" corresp="#s4:l1">gevallen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Totten hals toe inden <rhyme label="b" type="m" corresp="#s4:l2">gracht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dirick was by-naer <rhyme label="a" type="f">versopen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Door het modder, en <rhyme label="b" type="m">moras</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Lys die quam oock <rhyme label="a" type="f" corresp="#s5:l1">uyt-gecropen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Heel beslijckt, met al den <rhyme label="b" type="m" corresp="#s5:l2">bras</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Lys die scheen het haer te <rhyme label="a" type="f">storen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Lys die gaf hem al de <rhyme label="b" type="m">schult</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Ay! sprack Dirick, wilt my <rhyme label="a" type="f" corresp="#s6:l1">hooren</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Ach mijn Lysken nemt <rhyme label="b" type="m" corresp="#s6:l2">gedult</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">VVilt van gramschap u wat <rhyme label="a" type="f">sussen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">En vergevet my dees <rhyme label="b" type="m">rys</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">k'Sal u Mondeken eens <rhyme label="a" type="f" corresp="#s7:l1">kussen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Om met u te sijn in <rhyme label="b" type="m" corresp="#s7:l2">pys</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Neen sprack Lys, gy fielt gaet <rhyme label="a" type="f">henen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Kust het Hondtsgat, maer my <rhyme label="b" type="m">niet</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">Door dit Danssen, syt den <rhyme label="a" type="f" corresp="#s8:l1">genen</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Die my brenght in dit <rhyme label="b" type="m" corresp="#s8:l2">verdriet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Dirick moest acherm gaen <rhyme label="a" type="f">strycken</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Dirick was geheel <rhyme label="b" type="m">mismoet</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Dirick moest voortaen gaen <rhyme label="a" type="f" corresp="#s9:l1">kycken</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Naer een ander, armen <rhyme label="b" type="m" corresp="#s9:l2">bloet</rhyme>.</l>
      </lg>
    </lg>
  </text>
