  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Reyn hertekens zullen <rhyme label="a" type="f">verblyden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Inder <rhyme label="b" type="m">eewicheyt</rhyme>/</l>
        <l id="s1:l3" met="3" type="-+">Die hier tot allen <rhyme label="a" type="f" corresp="#s1:l1">lyden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Hen ziel maeken <rhyme label="b" type="m" corresp="#s1:l2">bereyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die Godt wilt <rhyme label="a" type="f">behaegen</rhyme> /</l>
        <l id="s2:l2" met="3" type="-+">Ziet dat hij <rhyme label="b" type="m">begeert</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Zijn lyden te <rhyme label="a" type="f" corresp="#s2:l1">verdraegen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om Godt / hij eest al <rhyme label="b" type="m" corresp="#s2:l2">weert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Och hoe edel <rhyme label="a" type="f">zyn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Der menschen <rhyme label="b" type="m">zinnen</rhyme> /</l>
        <l id="s3:l3" met="3" type="-+">Die met herten <rhyme label="a" type="f" corresp="#s3:l1">fyn</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Willen Godt <rhyme label="b" type="m" corresp="#s3:l2">beminnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die zyn herte niet en <rhyme label="a" type="f">stelt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Op dat aertsche <rhyme label="b" type="m">goet</rhyme> /</l>
        <l id="s4:l3" met="3" type="-+">Noch die hem niet en <rhyme label="a" type="f" corresp="#s4:l1">quelt</rhyme> /</l>
        <l id="s4:l4" met="3" type="-+">Om dat hijt derven <rhyme label="b" type="m" corresp="#s4:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Peyst dat ghij naeckt moet <rhyme label="a" type="f">scheeden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Uut deser werelt <rhyme label="b" type="m">wijt</rhyme> /</l>
        <l id="s5:l3" met="3" type="-+">Wilt u met liefden <rhyme label="a" type="f" corresp="#s5:l1">cleeden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In desen droeven <rhyme label="b" type="m" corresp="#s5:l2">tyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doet caritate den <rhyme label="a" type="f">armen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die nu zyn inder <rhyme label="b" type="m">noot</rhyme> /</l>
        <l id="s6:l3" met="3" type="-+">Godt sal uwer <rhyme label="a" type="f" corresp="#s6:l1">ontfermen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In dure van uwer <rhyme label="b" type="m" corresp="#s6:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den Heere die is <rhyme label="a" type="f">almachtich</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Hy willet haest <rhyme label="b" type="m">versien</rhyme> /</l>
        <l id="s7:l3" met="3" type="-+">Betrouden wij zijn woort <rhyme label="a" type="f" corresp="#s7:l1">crachtich</rhyme> /</l>
        <l id="s7:l4" met="3" type="-+">Ghenade soude ons <rhyme label="b" type="m" corresp="#s7:l2">gheschien</rhyme>.</l>
      </lg>
    </lg>
  </text>
