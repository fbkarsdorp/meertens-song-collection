  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SChrey, Ziele, schrey, barst uyt in <rhyme label="a" type="f">weenen</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">En droevigh <rhyme label="a" type="f" corresp="#s1:l1">steenen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Vervul u borst met droef <rhyme label="b" type="m">geklagh</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Traen nacht en <rhyme label="b" type="m" corresp="#s1:l3">dagh</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Sucht droeve <rhyme label="c" type="m">ziel</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">uyt boesemt <rhyme label="d" type="f">huylen</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Doet niet dan <rhyme label="d" type="f" corresp="#s1:l6">truylen</rhyme>:</l>
        <l id="s1:l8" met="4" type="-+">Bekrijt uw' jammerlijcke <rhyme label="e" type="m">staet</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Eer't wort te <rhyme label="e" type="m" corresp="#s1:l8">laet</rhyme>:</l>
        <l id="s1:l10" met="2" type="-+">Aenschouw' uw' <rhyme label="f" type="f">sonden</rhyme>,</l>
        <l id="s1:l11" met="2" type="+-">Besie uw' <rhyme label="f" type="f" corresp="#s1:l10">wonden</rhyme>,</l>
        <l id="s1:l12" met="3" type="+-">Let op al u <rhyme label="g" type="m">feyl</rhyme>:</l>
        <l id="s1:l13" met="2" type="+-">Vlucht nu <rhyme label="h" type="m">tot</rhyme> //</l>
        <l id="s1:l14" met="2" type="+-">Vwen <rhyme label="h" type="m" corresp="#s1:l13">Godt</rhyme>,</l>
        <l id="s1:l15" met="2" type="+-">Sijn <rhyme label="h" type="m" corresp="#s1:l13">gebodt</rhyme> //</l>
        <l id="s1:l16" met="4" type="+-">Drijft met Jesus noyt de <rhyme label="h" type="m" corresp="#s1:l13">spot</rhyme>,</l>
        <l id="s1:l17" met="4" type="+-">Houd u uyt 'et heylloos <rhyme label="h" type="m" corresp="#s1:l13">Kot</rhyme>,</l>
        <l id="s1:l18" met="3" type="+-">En soeckt aen Godt <rhyme label="g" type="m" corresp="#s1:l12">heyl</rhyme>:</l>
        <l id="s1:l19" met="2" type="-+">Wilt ondeught <rhyme label="i" type="f">haten</rhyme>,</l>
        <l id="s1:l20" met="2" type="-+">En sonden <rhyme label="i" type="f" corresp="#s1:l19">laten</rhyme>,</l>
        <l id="s1:l21" met="3" type="+-">Doende altijdt <rhyme label="j" type="m">goedt</rhyme>:</l>
        <l id="s1:l22" met="2" type="+-">Dient den <rhyme label="k" type="m">Heer</rhyme> //</l>
        <l id="s1:l23" met="2" type="+-">Meer en <rhyme label="k" type="m" corresp="#s1:l22">meer</rhyme>,</l>
        <l id="s1:l24" met="2" type="+-">Neem u <rhyme label="k" type="m" corresp="#s1:l22">keer</rhyme> //</l>
        <l id="s1:l25" met="4" type="+-">Tot sijn Ziel vertroosbre <rhyme label="k" type="m" corresp="#s1:l22">leer</rhyme>,</l>
        <l id="s1:l26" met="4" type="+-">Buyght u voor sijn voeten <rhyme label="k" type="m" corresp="#s1:l22">neer</rhyme>,</l>
        <l id="s1:l27" met="3" type="+-">En doet ware <rhyme label="j" type="m" corresp="#s1:l21">boet</rhyme>,</l>
        <l id="s1:l28" met="4" type="+-">Houdt geduerigh in <rhyme label="l" type="f">gedachten</rhyme></l>
        <l id="s1:l29" met="2" type="+-">V we <rhyme label="l" type="f" corresp="#s1:l28">klachten</rhyme>,</l>
        <l id="s1:l30" met="4" type="+-">Keert niet weder van 'et <rhyme label="m" type="m">padt</rhyme>,</l>
        <l id="s1:l31" met="4" type="+-">Graeft naeJesu duerbre <rhyme label="m" type="m" corresp="#s1:l30">Schat</rhyme>;</l>
        <l id="s1:l32" met="4" type="+-">Wilt sijn Woordt en heylbre <rhyme label="n" type="f">Wetten</rhyme></l>
        <l id="s1:l33" met="2" type="+-">Noyt <rhyme label="n" type="f" corresp="#s1:l32">versetten</rhyme>:</l>
        <l id="s1:l34" met="4" type="+-">Want so ghy die weer <rhyme label="o" type="m">verlaet</rhyme>,</l>
        <l id="s1:l35" met="4" type="+-">Ghy doet wis een dubbel <rhyme label="o" type="m" corresp="#s1:l34">quaet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wel aen dan, Ziel, wilt vlijtigh <rhyme label="a" type="f">keeren</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Tot godt den <rhyme label="a" type="f" corresp="#s2:l1">Heere</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Val met een seer benaeuwt <rhyme label="b" type="m">ghemoedt</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Hem ne'er te <rhyme label="b" type="m" corresp="#s2:l3">voet</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">En smeeckt dat <rhyme label="c" type="m">hy</rhyme></l>
        <l id="s2:l6" met="2" type="-+">u Godd'loos <rhyme label="d" type="f">leven</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Gantsch wil <rhyme label="d" type="f" corresp="#s2:l6">vergeven</rhyme>:</l>
        <l id="s2:l8" met="4" type="-+">Sijn goetheydt is soo wijdt en <rhyme label="e" type="m">groot</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Dat hy den <rhyme label="e" type="m" corresp="#s2:l8">doodt</rhyme></l>
        <l id="s2:l10" met="2" type="-+">Van snoode <rhyme label="f" type="f">menschen</rhyme></l>
        <l id="s2:l11" met="2" type="+-">Sal nimmer <rhyme label="f" type="f" corresp="#s2:l10">wenschen</rhyme>,</l>
        <l id="s2:l12" met="3" type="+-">Maer hy schenckt <rhyme label="g" type="m">ghenae'</rhyme>,</l>
        <l id="s2:l13" met="2" type="+-">Schoon u <rhyme label="h" type="m">hert</rhyme></l>
        <l id="s2:l14" met="2" type="+-">Door de <rhyme label="h" type="m" corresp="#s2:l13">smert</rhyme></l>
        <l id="s2:l15" met="2" type="+-">Is <rhyme label="h" type="m" corresp="#s2:l13">benert</rhyme>,</l>
        <l id="s2:l16" met="4" type="+-">Dat 'et schier verwonnen <rhyme label="h" type="m" corresp="#s2:l13">werdt</rhyme>,</l>
        <l id="s2:l17" met="4" type="+-">Door de wanhoop, die het <rhyme label="h" type="m" corresp="#s2:l13">tert</rhyme>,</l>
        <l id="s2:l18" met="3" type="+-">Noch gheneest hy <rhyme label="g" type="m" corresp="#s2:l12">drae</rhyme>.</l>
        <l id="s2:l19" met="2" type="-+">Wilt boose <rhyme label="i" type="f">luymen</rhyme></l>
        <l id="s2:l20" met="2" type="-+">Maer uyt u <rhyme label="i" type="f" corresp="#s2:l19">ruymen</rhyme>,</l>
        <l id="s2:l21" met="3" type="+-">Snoept 'et quade <rhyme label="j" type="m">af</rhyme>:</l>
        <l id="s2:l22" met="2" type="+-">Laet de <rhyme label="k" type="m">Deught</rhyme>,</l>
        <l id="s2:l23" met="2" type="+-">Heylbre <rhyme label="k" type="m" corresp="#s2:l22">vreught</rhyme>,</l>
        <l id="s2:l24" met="2" type="+-">
          <rhyme label="k" type="m" corresp="#s2:l22">Ziel-gheneught</rhyme>
        </l>
        <l id="s2:l25" met="4" type="+-">Zijn de oeff'ningh van u <rhyme label="k" type="m" corresp="#s2:l22">Ieught</rhyme>,</l>
        <l id="s2:l26" met="4" type="+-">Vliedt 'et quaedt, so veelje <rhyme label="k" type="m" corresp="#s2:l22">meught</rhyme>,</l>
        <l id="s2:l27" met="3" type="+-">En legh ne'er in't <rhyme label="j" type="m" corresp="#s2:l21">Graf</rhyme>,</l>
        <l id="s2:l28" met="4" type="+-">Godt, wanneer hy aen sal <rhyme label="l" type="f">schouwen</rhyme></l>
        <l id="s2:l29" met="2" type="+-">V <rhyme label="l" type="f" corresp="#s2:l28">berouwen</rhyme>,</l>
        <l id="s2:l30" met="4" type="+-">En u wederkeerr' in't <rhyme label="m" type="m">goe</rhyme>,</l>
        <l id="s2:l31" met="4" type="+-">Sal verbranden sijne <rhyme label="m" type="m" corresp="#s2:l30">Roe</rhyme>,</l>
        <l id="s2:l32" met="4" type="+-">Hy en sal gheen leet of <rhyme label="n" type="f">lijden</rhyme>,</l>
        <l id="s2:l33" met="2" type="+-">Ramp, of <rhyme label="n" type="f" corresp="#s2:l32">strijden</rhyme></l>
        <l id="s2:l34" met="4" type="+-">Op u storten, dat 'et <rhyme label="o" type="m">deert</rhyme>.</l>
        <l id="s2:l35" met="4" type="+-">Gheluckigh Sondaer, die <rhyme label="o" type="m" corresp="#s2:l34">bekeert</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
