  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">WIe kon 't <rhyme label="a" type="f">houwen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Zonder wyn en zonder <rhyme label="a" type="f" corresp="#s1:l1">vrouwen</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Zonder vrouwen, zonder <rhyme label="b" type="m">wyn</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Zou 't een droevig leven <rhyme label="b" type="m" corresp="#s1:l3">zyn</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Wie my anders wil <rhyme label="c" type="f">beweeren</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Zal maar <rhyme label="c" type="f" corresp="#s1:l5">leeren</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Dat het slinks gebruik daar <rhyme label="d" type="m">van</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Schaaden <rhyme label="d" type="m" corresp="#s1:l7">kan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Zou men <rhyme label="a" type="f">schuwen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">'t Eerbaar minnen, 't oorbaar <rhyme label="a" type="f" corresp="#s2:l1">huwen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Ylings wierd dit schoon <rhyme label="b" type="m">heelal</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Weer een ongeschikte <rhyme label="b" type="m" corresp="#s2:l3">bal</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Wie my anders wil <rhyme label="c" type="f">beweeren</rhyme></l>
        <l id="s2:l6" met="2" type="+-">Zal maar <rhyme label="c" type="f" corresp="#s2:l5">leeren</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Dat de insteller zelfs daar <rhyme label="d" type="m">van</rhyme></l>
        <l id="s2:l8" met="2" type="+-">Schaaden <rhyme label="d" type="m" corresp="#s2:l7">kan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Wie dar <rhyme label="a" type="f">wraaken</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat we ons, nugtren, vrolyk <rhyme label="a" type="f" corresp="#s3:l1">maaken</rhyme></l>
        <l id="s3:l3" met="4" type="+-">By den wyn, die 't hart <rhyme label="b" type="m">verblyd</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Daar de reden niet by <rhyme label="b" type="m" corresp="#s3:l3">lyd</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Zal een avregtsch stuk <rhyme label="c" type="f">beweeren</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">En maar <rhyme label="c" type="f" corresp="#s3:l5">leeren</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Dat de schenker zelfs daar <rhyme label="d" type="m">van</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Schaaden <rhyme label="d" type="m" corresp="#s3:l7">kan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Geen <rhyme label="a" type="f">vermaken</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Die wy, nugtren, wettig <rhyme label="a" type="f" corresp="#s4:l1">smaaken</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Waaren in het oog ooit <rhyme label="b" type="m">kwaad</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dat alleen het misbruik <rhyme label="b" type="m" corresp="#s4:l3">haat</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Wie my anders wil <rhyme label="c" type="f">beweeren</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">Zal maar <rhyme label="c" type="f" corresp="#s4:l5">leeren</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Dat de geever zelfs daar <rhyme label="d" type="m">van</rhyme></l>
        <l id="s4:l8" met="2" type="+-">Schaaden <rhyme label="d" type="m" corresp="#s4:l7">kan</rhyme>.</l>
      </lg>
    </lg>
  </text>
