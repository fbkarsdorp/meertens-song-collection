  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wilt nu een Liedt gaen <rhyme label="a" type="f">singhen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dit wel ghedachtich <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat hier nu alle <rhyme label="a" type="f" corresp="#s1:l1">dinghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Moet hebben sijnen <rhyme label="b" type="m" corresp="#s1:l2">tijt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Vergaren goet // Oock scheyden <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Al vallet dickwils <rhyme label="d" type="m">swaer</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Maer Godt die wil ons <rhyme label="e" type="f">bringhen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Weder by een hier <rhyme label="d" type="m" corresp="#s1:l6">naer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">‘t Scheyden waer meer <rhyme label="a" type="f">truyrlijk</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Waer ons niet <rhyme label="b" type="m">toe-gheseyt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">By een komste <rhyme label="a" type="f" corresp="#s2:l1">gheduyrlijck</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hier nae in <rhyme label="b" type="m" corresp="#s2:l2">eeuwigheyt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Daer wy met vreucht // Sullen <rhyme label="c" type="m">verheught</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Altijts wesen by <rhyme label="d" type="m">een</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Alsdan werdt niet <rhyme label="e" type="f">ghebuyrlijck</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Dat wy dus sonden <rhyme label="d" type="m" corresp="#s2:l6">scheen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Nae dien wy moeten <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van een op dit <rhyme label="b" type="m">termijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Gods Gheest wil u <rhyme label="a" type="f" corresp="#s3:l1">gheleyden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">End’ ons vertrooster <rhyme label="b" type="m" corresp="#s3:l2">zijn</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Waer dat ghy gaet // Wacht u van <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Vreest Gods toornigheyt <rhyme label="d" type="m">stranck</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Wilt u alsoo <rhyme label="e" type="f">bereyden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Want eeuwigh is soo <rhyme label="d" type="m" corresp="#s3:l6">lanck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Laet u licht zijn <rhyme label="a" type="f">gheresen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Voor elck een <rhyme label="b" type="m">openbaer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat daer door zy <rhyme label="a" type="f" corresp="#s4:l1">ghepresen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Uwen Hemelschen <rhyme label="b" type="m" corresp="#s4:l2">Vaer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Hoe wel dat ghy // Sult zijn van <rhyme label="c" type="m">my</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Lichamelijck <rhyme label="d" type="m">absent</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sal ick u nochtans <rhyme label="e" type="f">wesen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Met mijnen gheest <rhyme label="d" type="m" corresp="#s4:l6">ontrent</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Zijt my altijdts <rhyme label="a" type="f">ghedachtich</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In u ghebedt tot <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die ons kan stercken <rhyme label="a" type="f" corresp="#s5:l1">krachticgh</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Om doen nae sijn <rhyme label="b" type="m" corresp="#s5:l2">Ghebodt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Ick wil oock dijn // Ghedencken <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Want sulckx ons wel <rhyme label="d" type="m">betaemt</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Op dat ons Godt <rhyme label="e" type="f">almachtich</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Weder brenghe <rhyme label="d" type="m" corresp="#s5:l6">versaemt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Fodt die wil u <rhyme label="a" type="f">bewaren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ick beveel u den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Tot dat wy weer <rhyme label="a" type="f" corresp="#s6:l1">vergaren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Daer gheen scheyden wert <rhyme label="b" type="m" corresp="#s6:l2">meer</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Adieu tot u // Die hier zijn <rhyme label="c" type="m">nu</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Houdt dit mijn kort <rhyme label="d" type="m">ghesanck</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Als een simpel <rhyme label="e" type="f">verklaren</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Voor een Oorlof in <rhyme label="d" type="m" corresp="#s6:l6">danck</rhyme>.</l>
      </lg>
    </lg>
  </text>
