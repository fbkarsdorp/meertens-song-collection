  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EEnen quinckel Boer <rhyme label="a" type="f">geseten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Op de bierbanck op een <rhyme label="b" type="m">keer</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Heeft soo in syn broeck <rhyme label="a" type="f" corresp="#s1:l1">gescheten</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat het stonck al even <rhyme label="b" type="m" corresp="#s1:l2">seer</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Ider sey wie heeft doen <rhyme label="c" type="f">craecken</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Door een scheet syn achter <rhyme label="c" type="f" corresp="#s1:l5">kaecken</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Foey het stinckt als eene <rhyme label="d" type="m">pest</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Of een swalpey uyt het <rhyme label="d" type="m" corresp="#s1:l7">nest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Den Boer sey hier op, <rhyme label="a" type="f">gesopen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Laet my claegen en gy <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Want ick sitt' in myn <rhyme label="a" type="f" corresp="#s2:l1">syropen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">'t Midden inne mee <rhyme label="b" type="m" corresp="#s2:l2">verdriet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">En ick moet myn gat noch <rhyme label="c" type="f">vagen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dus ick moet hier van meest <rhyme label="c" type="f" corresp="#s2:l5">klagen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Gy-lie hebt het inden' <rhyme label="d" type="m">neus</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">dat komt uyt myn <rhyme label="d" type="m" corresp="#s2:l7">achter-beus</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dese schyte-broeck ter <rhyme label="a" type="f">degen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Jonckman ende satte <rhyme label="b" type="m">swyn</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Heeft noch even een <rhyme label="a" type="f" corresp="#s3:l1">gekregen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">dat hy Bruygom quam te <rhyme label="b" type="m" corresp="#s3:l2">zyn</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Soo geen scheeven pot of <rhyme label="c" type="f">panne</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Oft geen decksel kander <rhyme label="c" type="f" corresp="#s3:l5">anne</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Seghtmen, en 't wordt al <rhyme label="d" type="m">verkocht</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">datme siet te mert <rhyme label="d" type="m" corresp="#s3:l7">gebrocht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Nu de Bruyloft wiert <rhyme label="a" type="f">gehauwen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Was den klunten wederom <rhyme label="b" type="m">sat</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En hy heef het soo <rhyme label="a" type="f" corresp="#s4:l1">gebrauwen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">dat hy sich bespogen <rhyme label="b" type="m" corresp="#s4:l2">hadt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En wederom <rhyme label="c" type="f">beeroopen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">In syn brock met stront <rhyme label="c" type="f" corresp="#s4:l5">sijropen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Ginck hy slaepen aen een <rhyme label="d" type="m">kandt</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Daer hem oock syn Bruyt soo <rhyme label="d" type="m" corresp="#s4:l7">vant</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dese quam by Bruygoms <rhyme label="a" type="f">moere</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Ende maeckte groot <rhyme label="b" type="m">misbaer</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Ende grees gelyck een <rhyme label="a" type="f" corresp="#s5:l1">hoere</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En de moeder sprack haer <rhyme label="b" type="m" corresp="#s5:l2">aen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Dochter waerom soo <rhyme label="c" type="f">gekreten</rhyme>?</l>
        <l id="s5:l6" met="4" type="+-">Moeder sey sy wilt ghy <rhyme label="c" type="f" corresp="#s5:l5">weten</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">'t Is om dat ick heb <rhyme label="d" type="m">versint</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Wie dat vaeght 't beschete <rhyme label="d" type="m" corresp="#s5:l7">kindt</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Bruygoms moere sprack met <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Alle moeder vaeght haer <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Seer gewilligh wilt <rhyme label="a" type="f" corresp="#s6:l1">besteden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Dese moyt wat sy't <rhyme label="b" type="m" corresp="#s6:l2">bemindt</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Moeder sey de bruyt wilt <rhyme label="c" type="f">vaeghen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">U kindts stront hier achter <rhyme label="c" type="f" corresp="#s6:l5">d'hagen</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">'t Is myn bruygom en u <rhyme label="d" type="m">kindt</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Dat gy heel bescheten <rhyme label="d" type="m" corresp="#s6:l7">vint</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Jonge jeught wilt dit <rhyme label="a" type="f">onthauwen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Wat een quaet is <rhyme label="b" type="m">sattigheydt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En als gy stelt tot <rhyme label="a" type="f" corresp="#s7:l1">Hauwen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Siet meest naer de deught <rhyme label="b" type="m" corresp="#s7:l2">altydt</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Een wyf meest om geelt te <rhyme label="c" type="f">trauwen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Of schoon vel 't sal u <rhyme label="c" type="f" corresp="#s7:l5">berauwen</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Die een sot trauwt om syn <rhyme label="d" type="m">kot</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Verliest kot eer houdt den <rhyme label="d" type="m" corresp="#s7:l7">sot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
