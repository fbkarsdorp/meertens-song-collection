    <melody>Wel Daphne dus versuft</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHelijck Apollo <rhyme label="a" type="m">staegh</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Zijne Daphne naer <rhyme label="a" type="m" corresp="#s1:l1">jaeght</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Om weer-Min te <rhyme label="b" type="f">ghenieten</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Soo doe ick oock ghestaegh om <rhyme label="c" type="m">u</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Maer ghy vlucht als Daphne, soo <rhyme label="c" type="m" corresp="#s1:l4">schu</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dies ick leef in’t <rhyme label="b" type="f" corresp="#s1:l3">verdrieten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ach! toeft wat, Daphne <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ick bidt u met <rhyme label="a" type="m" corresp="#s2:l1">ootmoet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wilt hooren naer mijn <rhyme label="b" type="f">klachten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ey hoort eens hoe u Liefje <rhyme label="c" type="m">klaeght</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die u Daphne ghestaegh naer <rhyme label="c" type="m" corresp="#s2:l4">jaeght</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wiens tranen noyt <rhyme label="b" type="f" corresp="#s2:l3">versachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Werd ick nu dus <rhyme label="a" type="m">beloont</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">In plaets van te <rhyme label="a" type="m" corresp="#s3:l1">bekroont</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">V eeuwigh dan te <rhyme label="b" type="f">derven</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Soo bid ick om de bleecke <rhyme label="c" type="m">Doodt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat hy my ruckt uyt ‘t lijden <rhyme label="c" type="m" corresp="#s3:l4">groot</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ghewilligh sal ick <rhyme label="b" type="f" corresp="#s3:l3">sterven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sooder nu yemandt <rhyme label="a" type="m">vraeght</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wie dat het is die <rhyme label="a" type="m" corresp="#s4:l1">klaeght</rhyme></l>
        <l id="s4:l3" met="3" type="-+">En soo is <rhyme label="b" type="f">opghetoghen</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Het is een jonck Apollos <rhyme label="c" type="m">Kindt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Maer ‘t geen hy soeckt hy niet en <rhyme label="c" type="m" corresp="#s4:l4">vindt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Sijn Daphne is <rhyme label="b" type="f" corresp="#s4:l3">vervloghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
