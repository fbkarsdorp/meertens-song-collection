  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">OM de sekerheydt te <rhyme label="a" type="f">weten</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van de grillen van de <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ben ick by u ne'er <rhyme label="a" type="f" corresp="#s1:l1">gheseten</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Cloris soete. <rhyme label="b" type="m" corresp="#s1:l2">Moorderin</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Maer ick die alleen wou <rhyme label="c" type="f">trachten</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Naer de kennis van dees <rhyme label="d" type="m">saeck</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Voel dat al myn <rhyme label="c" type="f" corresp="#s1:l5">sinne-krachten</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Seffens lyden ramp en <rhyme label="d" type="m" corresp="#s1:l6">braeck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ick die vlughjes moght <rhyme label="a" type="f">verhalen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Dat ick on-ghebonden <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Sie my in een Dool-hof <rhyme label="a" type="f" corresp="#s2:l1">dwalen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Daer de weghen zyn vol <rhyme label="b" type="m" corresp="#s2:l2">gras</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Daer de Reysers eeuwigh <rhyme label="c" type="f">dolen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Die elck uer on-seker <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Overmits voor hun <rhyme label="c" type="f" corresp="#s2:l5">verholen</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Blyft de recht' en ware <rhyme label="d" type="m" corresp="#s2:l6">baen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wat besuer ick nu het <rhyme label="a" type="f">snoepen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En het plucken van de <rhyme label="b" type="m">vrucht</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die my alle uer doet <rhyme label="a" type="f" corresp="#s3:l1">roepen</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Cloris dempt doch myn <rhyme label="b" type="m" corresp="#s3:l2">ghesucht</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Laet u, Soete, dit <rhyme label="c" type="f">beweghen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Schoon gy bleeft voor alles <rhyme label="d" type="m">doof</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En bedenckt doch eens te <rhyme label="c" type="f" corresp="#s3:l5">deghe</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Hoe dat ick u viel te <rhyme label="d" type="m" corresp="#s3:l6">roof</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Een nieuws-gierigheyt die dreef <rhyme label="a" type="f">my</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En die bondt my aen u <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Soetertjen, ick bidd' u, geeft <rhyme label="a" type="f" corresp="#s4:l1">my</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Dan verlichtingh van den <rhyme label="b" type="m" corresp="#s4:l2">last</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Valt soo licht in myne <rhyme label="c" type="f">banden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Als ick in de uwe <rhyme label="d" type="m">viel</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Soo kryght liefde <rhyme label="c" type="f" corresp="#s4:l5">d'offerhande</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Van een rechte danckbaer <rhyme label="d" type="m" corresp="#s4:l6">ziel'</rhyme>.</l>
      </lg>
    </lg>
  </text>
