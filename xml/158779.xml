  <author>Jacob Coenraetsz Mayvogel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">O Aer is op <rhyme label="a" type="m">straet</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Een groot <rhyme label="a" type="m" corresp="#s1:l1">gelaet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Nu Elsje gaet te <rhyme label="b" type="f">trouwen</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Elck een kijckt <rhyme label="c" type="m">uyt</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Na dese <rhyme label="c" type="m" corresp="#s1:l4">Bruyt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">De wijst van al de <rhyme label="b" type="f" corresp="#s1:l3">Vrouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Geen nieuw jongh <rhyme label="a" type="m">paer</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Wie dat het <rhyme label="a" type="m" corresp="#s2:l1">waer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sy wister op te <rhyme label="b" type="f">spreken</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Sy leyden <rhyme label="c" type="m">uyt</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Met kort <rhyme label="c" type="m" corresp="#s2:l4">besluyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Een yder zijn <rhyme label="b" type="f" corresp="#s2:l3">gebreken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Geen Vryer <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Die zy <rhyme label="a" type="m" corresp="#s3:l1">vernam</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Al was hy noch soo <rhyme label="b" type="f">aerdigh</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Al had hy <rhyme label="c" type="m">stof</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Van eer en <rhyme label="c" type="m" corresp="#s3:l4">Lof</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Tot spotten was sy <rhyme label="b" type="f" corresp="#s3:l3">vaerdigh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Niemant hoe <rhyme label="a" type="m">rijck</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Was haers <rhyme label="a" type="m" corresp="#s4:l1">gelijck</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Al waert de <rhyme label="b" type="f">alderbeste</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Hoe schoon in <rhyme label="c" type="m">schijn</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Dat hy mocht <rhyme label="c" type="m" corresp="#s4:l4">zijn</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Sy spot met hem op 't <rhyme label="b" type="f" corresp="#s4:l3">leste</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Maer als ghy <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Wat na <rhyme label="a" type="m" corresp="#s5:l1">geschiet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer komt een slechte <rhyme label="b" type="f">Iorden</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Sy wort <rhyme label="c" type="m">berecht</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">En kreupel <rhyme label="c" type="m" corresp="#s5:l4">knecht</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Is Elsjes Lief <rhyme label="b" type="f" corresp="#s5:l3">geworden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">De wijse <rhyme label="a" type="m">Hen</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Leyt uyt de <rhyme label="a" type="m" corresp="#s6:l1">Ben</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Nu kijcken alle <rhyme label="b" type="f">oogen</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Op dese <rhyme label="c" type="m">Kroon</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Van spotters <rhyme label="c" type="m" corresp="#s6:l4">loon</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Siet, Els is nu <rhyme label="b" type="f" corresp="#s6:l3">bedrogen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Dus is 't wel <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Gegaen met <rhyme label="a" type="m" corresp="#s7:l1">meer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Met Vryers en met <rhyme label="b" type="f">Maeghden</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Die op het <rhyme label="c" type="m">lest</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Noch met de <rhyme label="c" type="m" corresp="#s7:l4">rest</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Haer spotterny <rhyme label="b" type="f" corresp="#s7:l3">beklaeghden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Het is een <rhyme label="a" type="m">sot</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Die hem met <rhyme label="a" type="m" corresp="#s8:l1">spot</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Met schempen gaet <rhyme label="b" type="f">generen</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Het is te <rhyme label="c" type="m">slecht</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Van Maeght of <rhyme label="c" type="m" corresp="#s8:l4">Knecht</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Het blat kan <rhyme label="b" type="f" corresp="#s8:l3">omme-keren</rhyme>.</l>
      </lg>
    </lg>
  </text>
