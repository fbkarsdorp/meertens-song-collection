  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IN 't Galileesch' <rhyme label="a" type="m">quartier</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Iesus heel <rhyme label="b" type="f">verkeerde</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hy sijn Discipels <rhyme label="a" type="m" corresp="#s1:l1">hier</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In het geloove <rhyme label="b" type="f" corresp="#s1:l2">leerde</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Let wel op mijn <rhyme label="c" type="f">bedieden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Print mijn woordt in uw <rhyme label="d" type="m">hart</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Want het sal nogh <rhyme label="c" type="f" corresp="#s1:l5">geschieden</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Tot uwe grooter <rhyme label="d" type="m" corresp="#s1:l6">smart</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Des menschen Soone <rhyme label="a" type="m">sel</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Werden nogh <rhyme label="b" type="f">overgeeven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Aen boose menschen <rhyme label="a" type="m" corresp="#s2:l1">fel</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die sullen neemen 't <rhyme label="b" type="f" corresp="#s2:l2">leeven</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hy sal ten derden <rhyme label="c" type="f">dage</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Weer opstaen van der <rhyme label="d" type="m">doodt</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Sy souden geerne <rhyme label="c" type="f" corresp="#s2:l5">vrage</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Maer waren veel te <rhyme label="d" type="m" corresp="#s2:l6">bloodt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Droefheydt heeft haer <rhyme label="a" type="m">omvaen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Om dat sy niet <rhyme label="b" type="f">verstonden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dus sijn sy <rhyme label="a" type="m" corresp="#s3:l1">voort-gegaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot sy Capharnaum <rhyme label="b" type="f" corresp="#s3:l2">vonden</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Daer quam by Petrus <rhyme label="c" type="f">eene</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Eysschen den <rhyme label="d" type="m">Didragina</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Geeft uwen Meester <rhyme label="c" type="f" corresp="#s3:l5">geene</rhyme>?</l>
        <l id="s3:l8" met="3" type="-+">Petrus antwoorde, <rhyme label="d" type="m" corresp="#s3:l6">ja</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Simon my eens <rhyme label="a" type="m">verklaert</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Seyd' Iesus, kondt gy 't <rhyme label="b" type="f">vatten</rhyme>?</l>
        <l id="s4:l3" met="3" type="-+">Koningen van der <rhyme label="a" type="m" corresp="#s4:l1">Aerdt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wat lieden of sy <rhyme label="b" type="f" corresp="#s4:l2">schatten</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">Of sy haer Kinders <rhyme label="c" type="f">scheeren</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Of liever <rhyme label="d" type="m">anderen</rhyme>?</l>
        <l id="s4:l7" met="3" type="-+">Hy seyd', dat sy <rhyme label="c" type="f" corresp="#s4:l5">begeeren</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Schattingh van <rhyme label="d" type="m" corresp="#s4:l6">vreemd'lingen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo sijn de Kinders <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van schattingh, seydt den <rhyme label="b" type="f">Heere</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Maer evenwel dat <rhyme label="a" type="m" corresp="#s5:l1">wy</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Niemandt <rhyme label="b" type="f" corresp="#s5:l2">schandalizeere</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Gaet heenen na den <rhyme label="c" type="f">strande</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En tot den vangk u <rhyme label="d" type="m">spoed'</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Haelt daer een visch aen <rhyme label="c" type="f" corresp="#s5:l5">lande</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Met uwen <rhyme label="d" type="m" corresp="#s5:l6">angel-roed'</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gy sult in d'eerste <rhyme label="a" type="m">vis</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die gy daer op sult <rhyme label="b" type="f">halen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Vinden een stater <rhyme label="a" type="m" corresp="#s6:l1">wis</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wilt voor ons twee <rhyme label="b" type="f" corresp="#s6:l2">betalen</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">O Iesu, goeden <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Gy sijt van alles <rhyme label="d" type="m">vry</rhyme>;</l>
        <l id="s6:l7" met="3" type="-+">Maer na uw goet <rhyme label="c" type="f" corresp="#s6:l5">begeere</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Gy betaelt al voor <rhyme label="d" type="m" corresp="#s6:l6">my</rhyme>.</l>
      </lg>
    </lg>
  </text>
