  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Z. O Iezus bron van <rhyme label="a" type="m">zaligheid</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Dierbaar rijk en <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">’K werp my in <rhyme label="a" type="m" corresp="#s1:l1">demoedigheid</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Neder voor u <rhyme label="b" type="m" corresp="#s1:l2">throon</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Wel wat is ’t, zegt het <rhyme label="c" type="m">vry</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dat my mist, ’t is by <rhyme label="c" type="m" corresp="#s1:l5">my</rhyme></l>
        <l id="s1:l7" met="1" type="-+"><rhyme label="d" type="m">Alleen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Ia by my en anders <rhyme label="d" type="m" corresp="#s1:l7">geen</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Toont my u <rhyme label="e" type="m">gedaant</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Alles is <rhyme label="e" type="m" corresp="#s1:l9">gevaant</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Komt tot my u <rhyme label="f" type="m">Heer</rhyme>,</l>
        <l id="s1:l12" met="4" type="+-">Haast krijgy hy u ziels <rhyme label="f" type="m" corresp="#s1:l11">begeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O kond ik maar ik leg ter <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">En ik kan niet <rhyme label="b" type="m">staan</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wel wat is u ziels <rhyme label="a" type="m" corresp="#s2:l1">begeer</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Dat gy my leert <rhyme label="b" type="m" corresp="#s2:l2">gaan</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Iezus zoet, vat mijn <rhyme label="c" type="m">hand</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Rigt mijn voet, op een <rhyme label="c" type="m" corresp="#s2:l5">stand</rhyme>,</l>
        <l id="s2:l7" met="1" type="-+">Dat <rhyme label="d" type="m">ik</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Kome kan, maar o ik <rhyme label="d" type="m" corresp="#s2:l7">schrik</rhyme>.</l>
        <l id="s2:l9" met="3" type="+-">Waarom zijt gy <rhyme label="e" type="m">bang</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">Ben ik dan zoo <rhyme label="e" type="m" corresp="#s2:l9">strang</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Neen, maar ik <rhyme label="f" type="m">onweerd</rhyme>,</l>
        <l id="s2:l12" met="4" type="+-">Zondig snood en gants <rhyme label="f" type="m" corresp="#s2:l11">verkeerd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wel ziele wie kwam ooyt tot <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Die niet zondig <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Kunt gy zelfs u make <rhyme label="a" type="m" corresp="#s3:l1">vry</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Van schuld, spoeyd u <rhyme label="b" type="m" corresp="#s3:l2">ras</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Neen o Heer, ik <rhyme label="c" type="m">verderf</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">T’langs zoo meer, en ik <rhyme label="c" type="m" corresp="#s3:l5">erf</rhyme>,</l>
        <l id="s3:l7" met="1" type="-+">De <rhyme label="d" type="m">smaat</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Van het bitter zonden <rhyme label="d" type="m" corresp="#s3:l7">kwaat</rhyme>.</l>
        <l id="s3:l9" met="3" type="+-">Wie kwam ooyt <rhyme label="e" type="m">getreen</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Tot my die ik <rhyme label="e" type="m" corresp="#s3:l9">heen</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Regt beladen <rhyme label="f" type="m">zond</rhyme>,</l>
        <l id="s3:l12" met="4" type="+-">En van binnen diep <rhyme label="f" type="m" corresp="#s3:l11">gewond</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Iezus o mijn zonden <rhyme label="a" type="m">pak</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Weegt my niet <rhyme label="b" type="m">genoeg</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">O dat mijn ziele meer <rhyme label="a" type="m" corresp="#s4:l1">verbrak</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Was ik laat en <rhyme label="b" type="m" corresp="#s4:l2">vroeg</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">In een vloet, van <rhyme label="c" type="m">getraan</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Was ’t gemoet, dan <rhyme label="c" type="m" corresp="#s4:l5">voldaan</rhyme>,</l>
        <l id="s4:l7" met="1" type="-+">O <rhyme label="d" type="m">neen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">U o Iezus anders <rhyme label="d" type="m" corresp="#s4:l7">geen</rhyme>.</l>
        <l id="s4:l9" met="3" type="+-">Drukt u zonden <rhyme label="e" type="m">smert</rhyme>,</l>
        <l id="s4:l10" met="3" type="+-">Niet genoeg u <rhyme label="e" type="m" corresp="#s4:l9">hert</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Treur dan niet om <rhyme label="f" type="m">my</rhyme>,</l>
        <l id="s4:l12" met="4" type="+-">Leef dan vrolijk vry en <rhyme label="f" type="m" corresp="#s4:l11">bly</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Iezus neen o ligt en <rhyme label="a" type="m">heyl</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Nergens vind ik <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Mijn ziele vind zig nergens <rhyme label="a" type="m" corresp="#s5:l1">veyl</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Zoekt by my u <rhyme label="b" type="m" corresp="#s5:l2">lust</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Geef u hert zoo <rhyme label="c" type="m">onrijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En vol smert, maar aan <rhyme label="c" type="m" corresp="#s5:l5">mijn</rhyme></l>
        <l id="s5:l7" met="1" type="-+"><rhyme label="d" type="m">Geheel</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Zoo werd ik u zalig <rhyme label="d" type="m" corresp="#s5:l7">deel</rhyme>.</l>
        <l id="s5:l9" met="3" type="+-">Kond ik maar o <rhyme label="e" type="m">Heer</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">’K had mijn ziels <rhyme label="e" type="m" corresp="#s5:l9">begeer</rhyme>,</l>
        <l id="s5:l11" met="3" type="+-">Was ik my maar <rhyme label="f" type="m">kwijt</rhyme>,</l>
        <l id="s5:l12" met="4" type="+-">O dan was mijn ziel <rhyme label="f" type="m" corresp="#s5:l11">verblijd</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wel kond gy niet in my is <rhyme label="a" type="m">kragt</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Leg maar voor my <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Maar op dees waterroering <rhyme label="a" type="m" corresp="#s6:l1">wagt</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">’K daal wel haast eens <rhyme label="b" type="m" corresp="#s6:l2">neer</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Ia fontijn, <rhyme label="c" type="m">watervat</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Reynigt mijn, laat het <rhyme label="c" type="m" corresp="#s6:l5">nat</rhyme>,</l>
        <l id="s6:l7" met="1" type="-+">U <rhyme label="d" type="m">bloed</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Zijn gesprengt op mijn <rhyme label="d" type="m" corresp="#s6:l7">gemoet</rhyme>.</l>
        <l id="s6:l9" met="3" type="+-">J. ’K wil, maar dan niet <rhyme label="e" type="m">weer</rhyme>,</l>
        <l id="s6:l10" met="3" type="+-">U tot dwaasheid <rhyme label="e" type="m" corresp="#s6:l9">keer</rhyme>.</l>
        <l id="s6:l11" met="3" type="+-">Daar toe Heere <rhyme label="f" type="m">wagt</rhyme>,</l>
        <l id="s6:l12" met="4" type="+-">Op u genaad’ en <rhyme label="f" type="m" corresp="#s6:l11">kragt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
