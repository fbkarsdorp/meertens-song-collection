    <melody>Schoon liefje jent zeer excellent</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Verheught, verblijt, met groot <rhyme label="a" type="m">jolijt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die van herten <rhyme label="b" type="f">ghebroken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En van bedroefden Zielen <rhyme label="a" type="m" corresp="#s1:l1">zijt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Al door der zonden <rhyme label="a" type="m" corresp="#s1:l1">strijdt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Want den ghenaden <rhyme label="a" type="m" corresp="#s1:l1">tijdt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Is u seer soet <rhyme label="b" type="f" corresp="#s1:l2">ontloken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Staet op en gaet, niet langh en <rhyme label="a" type="m">beyt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Nae Bethlehem de <rhyme label="b" type="f">Stede</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Siet wat daer in een Kribbe <rhyme label="a" type="m" corresp="#s2:l1">leyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Weent, ende deerlijck <rhyme label="a" type="m" corresp="#s2:l1">schreyt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">In lijden en <rhyme label="a" type="m" corresp="#s2:l1">droefheyt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Tot uwer Zielen <rhyme label="b" type="f" corresp="#s2:l2">vrede</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Herodes die wert seer <rhyme label="a" type="m">verstoort</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met alle sijn <rhyme label="b" type="f">Dienaren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Als hy de tijdingh heeft <rhyme label="a" type="m" corresp="#s3:l1">ghehoort</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van dees blijde <rhyme label="a" type="m" corresp="#s3:l1">gheboort</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Soo dat hy heeft <rhyme label="a" type="m" corresp="#s3:l1">vermoort</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Kinderkens van twee <rhyme label="b" type="f" corresp="#s3:l2">jaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Vergheefs Herodes ghy u <rhyme label="a" type="m">quelt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Om Christum te <rhyme label="b" type="f">ontleden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hy soeckt niet u rijckdom, u <rhyme label="a" type="m" corresp="#s4:l1">ghelt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">U schat, noch u <rhyme label="a" type="m" corresp="#s4:l1">ghewelt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">‘t Rijcke van desen <rhyme label="a" type="m" corresp="#s4:l1">Helt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En is niet hier <rhyme label="b" type="f" corresp="#s4:l2">beneden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">In op-ghepronckte hoven <rhyme label="a" type="m">jent</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En is hy niet te <rhyme label="b" type="f">vinden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maer den vernederden <rhyme label="a" type="m" corresp="#s5:l1">ontrent</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Heeft hy sijn <rhyme label="a" type="m" corresp="#s5:l1">loghement</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ter werelt <rhyme label="a" type="m" corresp="#s5:l1">onbekent</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Maer met sijne <rhyme label="b" type="f" corresp="#s5:l2">beminden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hem neerstigh offerhande <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Schoon Gout, hooghe van <rhyme label="b" type="f">weerde</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dat’s een door loutert herte <rhyme label="a" type="m" corresp="#s6:l1">goet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">‘t Welck in gheen <rhyme label="a" type="m" corresp="#s6:l1">teghenspoet</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Afwijckinghe en <rhyme label="a" type="m" corresp="#s6:l1">doet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Maer trouw’ is in ‘t <rhyme label="b" type="f" corresp="#s6:l2">volheerden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Brenght Wieroock op sijnen <rhyme label="a" type="m">Outaer</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Iae vyerighe <rhyme label="b" type="f">Ghebeden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Al uyt een hert suyver en <rhyme label="a" type="m" corresp="#s7:l1">klaer</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Niet voor de menschen, <rhyme label="a" type="m" corresp="#s7:l1">maer</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Voor Gode <rhyme label="a" type="m" corresp="#s7:l1">openbaer</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Moeten sy zijn <rhyme label="b" type="f" corresp="#s7:l2">beleden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Een buffel Myrthe maeckt <rhyme label="a" type="m">bereet</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Om voor hem uyt te <rhyme label="b" type="f">gieten</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat is een uyt-ghepijnde <rhyme label="a" type="m" corresp="#s8:l1">sweet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En bitter tranen <rhyme label="a" type="m" corresp="#s8:l1">heet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Daer mede toont hoe <rhyme label="a" type="m" corresp="#s8:l1">leet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">De zonden u <rhyme label="b" type="f" corresp="#s8:l2">verdrieten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Voor hem is weerdigh en <rhyme label="a" type="m">bequaem</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Soodanigh <rhyme label="b" type="f">offerande</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Hy gheeft oock voor ons <rhyme label="a" type="m" corresp="#s9:l1">al-te-saem</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Sijn heylighe <rhyme label="a" type="m" corresp="#s9:l1">lichaem</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Als offer <rhyme label="a" type="m" corresp="#s9:l1">aen-ghenaem</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Vrywilligh hier te <rhyme label="b" type="f" corresp="#s9:l2">pande</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Lof Godt die ons soo heeft <rhyme label="a" type="m">bemint</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Dat hy tot ons <rhyme label="b" type="f">bevrijden</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Gesonden heeft sijn lieve <rhyme label="a" type="m" corresp="#s10:l1">Kint</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat krachtigh <rhyme label="a" type="m" corresp="#s10:l1">overwint</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Al wat ons hier <rhyme label="a" type="m" corresp="#s10:l1">begint</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Vyandigh te <rhyme label="b" type="f" corresp="#s10:l2">bestrijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
