  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">ALs ick gae <rhyme label="a" type="f">bedencken</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">En wel <rhyme label="b" type="f">overwegen</rhyme></l>
        <l id="s1:l3" met="5" type="+-">Van de min, soo vinde ick dat haer <rhyme label="c" type="m">aert</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Is den een te <rhyme label="a" type="f" corresp="#s1:l1">schencken</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Ziels-geluck, en <rhyme label="b" type="f" corresp="#s1:l2">zegen</rhyme>,</l>
        <l id="s1:l6" met="5" type="+-">En den aer met dubbel-ramp <rhyme label="c" type="m" corresp="#s1:l3">beswaert</rhyme>.</l>
        <l id="s1:l7" met="5" type="+-">D’eene geraeckt op een gewenste <rhyme label="d" type="m">Ree</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">En d’ander doolt op d’ongebaende <rhyme label="d" type="m" corresp="#s1:l7">Zee</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">D’een ontseylt de <rhyme label="a" type="f">vlaegen</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Van <rhyme label="b" type="f">neyts-dwarrel-winden</rhyme>,</l>
        <l id="s2:l3" met="5" type="+-">En geraeckt aen sijn gewenste <rhyme label="c" type="m">lust</rhyme>;</l>
        <l id="s2:l4" met="3" type="+-">D’ander voelt de <rhyme label="a" type="f" corresp="#s2:l1">slagen</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">En moet sich verr’ <rhyme label="b" type="f" corresp="#s2:l2">vinden</rhyme>,</l>
        <l id="s2:l6" met="5" type="+-">Daer hy wenst sijn liefd’ te zijn <rhyme label="c" type="m" corresp="#s2:l3">geblust</rhyme>,</l>
        <l id="s2:l7" met="5" type="+-">D’eene die krijght sijn wel-gewenste <rhyme label="d" type="m">vreucht</rhyme>,</l>
        <l id="s2:l8" met="5" type="-+">En d’ander swemt in <rhyme label="d" type="m" corresp="#s2:l7">liefdens-ongeneucht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Al te wreede <rhyme label="a" type="f">Minne</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Steets sal ick <rhyme label="b" type="f">beklaeghen</rhyme>,</l>
        <l id="s3:l3" met="5" type="+-">Over ‘t geen, dat ghy mijn ziel <rhyme label="c" type="m">aendoet</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Heb ick niet mijn <rhyme label="a" type="f" corresp="#s3:l1">sinnen</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">En mijn <rhyme label="b" type="f" corresp="#s3:l2">wel-behaegen</rhyme></l>
        <l id="s3:l6" met="5" type="+-">Aengeleyt, om nevens uwe <rhyme label="c" type="m" corresp="#s3:l3">Stoet</rhyme>,</l>
        <l id="s3:l7" met="5" type="+-">Op u altaer te smoocken <rhyme label="d" type="m">offerhant</rhyme>,</l>
        <l id="s3:l8" met="5" type="-+">(Segh o Goddin) naer wijse onses <rhyme label="d" type="m" corresp="#s3:l7">lant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Dan ghy soeckt te <rhyme label="a" type="f">plaegen</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Met u wreede <rhyme label="b" type="f">schichten</rhyme>,</l>
        <l id="s4:l3" met="5" type="+-">(Die u soo schiet tot mijn boesem <rhyme label="c" type="m">in</rhyme>)</l>
        <l id="s4:l4" met="3" type="+-">‘t Schijnt ghy hebt <rhyme label="a" type="f" corresp="#s4:l1">behaegen</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Dat ick steets sal <rhyme label="b" type="f" corresp="#s4:l2">swichten</rhyme>,</l>
        <l id="s4:l6" met="5" type="+-">En vergaen, in’t brandend-vier van <rhyme label="c" type="m" corresp="#s4:l3">Min</rhyme>,</l>
        <l id="s4:l7" met="5" type="+-">Want ghy ontsteeckt, mijn over-heete <rhyme label="d" type="m">borst</rhyme>,</l>
        <l id="s4:l8" met="5" type="-+">En die ick Min, heeft naeuwelijcx geen <rhyme label="d" type="m" corresp="#s4:l7">dorst</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">’k Heb verscheyde <rhyme label="a" type="f">malen</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Vwen lof <rhyme label="b" type="f">ghesonghen</rhyme>:</l>
        <l id="s5:l3" met="5" type="+-">Want ick dacht van u te zijn <rhyme label="c" type="m">verhoort</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Dan u <rhyme label="a" type="f" corresp="#s5:l1">ziels-dwangh-straelen</rhyme></l>
        <l id="s5:l5" met="3" type="+-">Hebben noyt <rhyme label="b" type="f" corresp="#s5:l2">ghedwonghen</rhyme></l>
        <l id="s5:l6" met="5" type="+-">Hem, die dus mijn zieltje heeft <rhyme label="c" type="m" corresp="#s5:l3">bekoort</rhyme>.</l>
        <l id="s5:l7" met="5" type="+-">Ick bid Goddin verhoort dees droeve <rhyme label="d" type="m">Maeght</rhyme>,</l>
        <l id="s5:l8" met="5" type="-+">Wiens herte mint, en niemandt haer <rhyme label="d" type="m" corresp="#s5:l7">behaeght</rhyme>.</l>
      </lg>
    </lg>
  </text>
