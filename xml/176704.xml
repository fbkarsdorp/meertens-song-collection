    <melody>Aus tiefer Not schrei ich zu dir</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Godt Vader wy loven <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Om u goetheyt <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die ghy soo ghenadelijck <rhyme label="a" type="m" corresp="#s1:l1">nu</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Aen ons hebbet <rhyme label="b" type="f" corresp="#s1:l2">bewesen</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">En ons alhier t’samen <rhyme label="c" type="m">ghehoort</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ons te vermanen door u <rhyme label="c" type="m" corresp="#s1:l5">woort</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Geeft ons ghenad’ tot <rhyme label="b" type="f" corresp="#s1:l2">desen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Opent den mondt van uwen <rhyme label="a" type="m">knecht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Geeft hem wijsheyt daer <rhyme label="b" type="f">neven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat hy u woort mach spreeckien <rhyme label="a" type="m" corresp="#s2:l1">recht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wat dient ten vromen <rhyme label="b" type="f" corresp="#s2:l2">leven</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En nutlijck is tot uwen <rhyme label="c" type="m">prijs</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Geeft ons hongher nae sulcke <rhyme label="c" type="m" corresp="#s2:l5">spijs</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat is ons bidden <rhyme label="b" type="f" corresp="#s2:l2">even</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Geeft ons herten oock <rhyme label="a" type="m">verstandt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En verlicht onse <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat u woort ons so wort <rhyme label="a" type="m" corresp="#s3:l1">bekandt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat wy vroom worden <rhyme label="b" type="f" corresp="#s3:l2">moghen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En leven in <rhyme label="c" type="m">gherechtigheyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Achten op u woort met <rhyme label="c" type="m" corresp="#s3:l5">bescheyt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ons leven daer nae <rhyme label="b" type="f" corresp="#s3:l2">poghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">U, o Heer, is het Rijck <rhyme label="a" type="m">alleyn</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En oock de macht te <rhyme label="b" type="f">samen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wy loven u, elck groot en <rhyme label="a" type="m" corresp="#s4:l1">kleyn</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En dancken u met <rhyme label="b" type="f" corresp="#s4:l2">namen</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">En bidden u van herten <rhyme label="c" type="m">gront</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Wilt by ons zijn tot deser <rhyme label="c" type="m" corresp="#s4:l5">stont</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Door Iesum Christum, <rhyme label="b" type="f" corresp="#s4:l2">Amen</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
