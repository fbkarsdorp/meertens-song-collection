    <melody>Venus gij en uw kind</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Herodes, weet gy <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat onder Goodts <rhyme label="a" type="m" corresp="#s1:l1">gebiet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Al sijne <rhyme label="b" type="f">Creaturen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Haer buygen t'aller <rhyme label="b" type="f" corresp="#s1:l3">uren</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En sonder te <rhyme label="c" type="f">verlengen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Sijn wille straks <rhyme label="c" type="f" corresp="#s1:l5">volbrengen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Of meynde gy <rhyme label="a" type="m">misschien</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat Godt niet kan <rhyme label="a" type="m" corresp="#s2:l1">deursien</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Uw' schuylende <rhyme label="b" type="f">gedaghten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die 't hart u schier <rhyme label="b" type="f" corresp="#s2:l3">versmaghten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hoe gy met boos <rhyme label="c" type="f">opsetten</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Soekt Goodts wil te <rhyme label="c" type="f" corresp="#s2:l5">beletten</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die Koningen hadt <rhyme label="a" type="m">gy</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Gegeven last, dat <rhyme label="a" type="m" corresp="#s3:l1">sy</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Weer tot u souden <rhyme label="b" type="f">komen</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Maer sy in hare <rhyme label="b" type="f" corresp="#s3:l3">droomen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ontfingen 't Engels <rhyme label="c" type="f">raden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Te gaen door ander <rhyme label="c" type="f" corresp="#s3:l5">paden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Gy meynden dan van <rhyme label="a" type="m">haer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Te weeten koomen, <rhyme label="a" type="m" corresp="#s4:l1">waer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Den nieuw'-gebooren <rhyme label="b" type="f">Koningh</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Genoomen had' sijn <rhyme label="b" type="f" corresp="#s4:l3">woningh</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Dan hem te doen <rhyme label="c" type="f">versmooren</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Maer uw' list gaet <rhyme label="c" type="f" corresp="#s4:l5">verlooren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Nu weet gy niet wat <rhyme label="a" type="m">raedt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Om tot soo bosen <rhyme label="a" type="m" corresp="#s5:l1">daedt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">In tijdts te mogen <rhyme label="b" type="f">raken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Hoe branden u de <rhyme label="b" type="f" corresp="#s5:l3">kaken</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Van gramschap en <rhyme label="c" type="f">hadye</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">'t Hart lijkt vol <rhyme label="c" type="f" corresp="#s5:l5">tirannye</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Begint gy soo <rhyme label="a" type="m">terstont</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met uw' Godtloosen <rhyme label="a" type="m" corresp="#s6:l1">mondt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Soo wreedt gebodt te <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat men sal neemen 't <rhyme label="b" type="f" corresp="#s6:l3">leven</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Van die onnosell' <rhyme label="c" type="f">Kinders</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Wat doen die u togh <rhyme label="c" type="f" corresp="#s6:l5">hinders</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Soldaten, hoort mijn <rhyme label="a" type="m">stem</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Gaet heen na <rhyme label="a" type="m" corresp="#s7:l1">Bethlehem</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Met d'aldergrootste <rhyme label="b" type="f">spoede</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En maekt het daer vol <rhyme label="b" type="f" corresp="#s7:l3">bloede</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">In alle sijn <rhyme label="c" type="f">quartieren</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Tot d'uyterste <rhyme label="c" type="f" corresp="#s7:l5">frontieren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Slaet doodt alwaer gy <rhyme label="a" type="m">vindt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Min' of twee-jarigh <rhyme label="a" type="m" corresp="#s8:l1">Kindt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Slaet doodt, en wilt niet <rhyme label="b" type="f">sparen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat binnen de twee <rhyme label="b" type="f" corresp="#s8:l3">jaren</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Sijn leven heeft <rhyme label="c" type="f">gekreegen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Doorsteekt het met uw' <rhyme label="c" type="f" corresp="#s8:l5">deegen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wat meent gy, boos <rhyme label="a" type="m">Tiran</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Dat dit Kindt niet en <rhyme label="a" type="m" corresp="#s9:l1">kan</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Uw' tiranny <rhyme label="b" type="f">ontloopen</rhyme>?</l>
        <l id="s9:l4" met="3" type="-+">Hebt gy soo yle <rhyme label="b" type="f" corresp="#s9:l3">hoopen</rhyme>?</l>
        <l id="s9:l5" met="3" type="-+">Maer wilt eens <rhyme label="c" type="f">overleggen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">'t Geen dat ik u sal <rhyme label="c" type="f" corresp="#s9:l5">seggen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">So 't niet en komt van <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Houdt vry daer meed' de <rhyme label="a" type="m" corresp="#s10:l1">spot</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En laet uw' yle <rhyme label="b" type="f">vreesen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Wilt niet tirannigh <rhyme label="b" type="f" corresp="#s10:l3">weesen</rhyme>;</l>
        <l id="s10:l5" met="3" type="-+">Maer soo gy de <rhyme label="c" type="f">Propheten</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Gelooft, soo moet ghy <rhyme label="c" type="f" corresp="#s10:l5">weeten</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Al 't geen dat Godt <rhyme label="a" type="m">begeert</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">En dat hy <rhyme label="a" type="m" corresp="#s11:l1">ordoneert</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dat moet gewis <rhyme label="b" type="f">geschieden</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">En niemant kan 't <rhyme label="b" type="f" corresp="#s11:l3">verbieden</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Daerom wilt u niet <rhyme label="c" type="f">quellen</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Om tegen Godt te <rhyme label="c" type="f" corresp="#s11:l5">stellen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">'t Kindt dat gy hebt <rhyme label="a" type="m">gesoght</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Dat is al wegh <rhyme label="a" type="m" corresp="#s12:l1">gebroght</rhyme>;</l>
        <l id="s12:l3" met="3" type="-+">Want Godt deed' dees <rhyme label="b" type="f">secreeten</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Door sijnen Engel <rhyme label="b" type="f" corresp="#s12:l3">weten</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Aen Joseph in sijn <rhyme label="c" type="f">droomen</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Dat hy dit most <rhyme label="c" type="f" corresp="#s12:l5">voor-koomen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">En voeren 't Kindt van <rhyme label="a" type="m">kant</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Heel na <rhyme label="a" type="m" corresp="#s13:l1">Egypten-lant</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">'t Sal blijven daer <rhyme label="b" type="f">verborgen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Went gy sult sijn <rhyme label="b" type="f" corresp="#s13:l3">gestorven</rhyme>;</l>
        <l id="s13:l5" met="3" type="-+">Daer na sal het <rhyme label="c" type="f">weer-keeren</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Als de Propheten <rhyme label="c" type="f" corresp="#s13:l5">leeren</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Onnosel Kinders <rhyme label="a" type="m">Goodts</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Die lijdt de smart des <rhyme label="a" type="m" corresp="#s14:l1">doodts</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Om onsen lieven <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Dat's tot uw' grooter <rhyme label="b" type="f" corresp="#s14:l3">eere</rhyme>;</l>
        <l id="s14:l5" met="3" type="-+">Hierom sal hy u <rhyme label="c" type="f">geeven</rhyme></l>
        <l id="s14:l6" met="3" type="-+">De Kroon van 't eeuwigh <rhyme label="c" type="f" corresp="#s14:l5">leeven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
