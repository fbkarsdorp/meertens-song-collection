    <melody>Rosbaardje en mooi Niesje</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IS’t dat ghy wilt <rhyme label="a" type="f">gevonden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Eens werden in de <rhyme label="b" type="m">vreugd</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Zoo keerd u van de <rhyme label="a" type="f" corresp="#s1:l1">zonde</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En voegt u tot de <rhyme label="b" type="m" corresp="#s1:l2">deugd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hoe zal ik dit <rhyme label="a" type="f">beginnen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">‘K en heb noch wil, noch <rhyme label="b" type="m">maet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Noch om het geod te <rhyme label="a" type="f" corresp="#s2:l1">minnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Noch om te haten ’t <rhyme label="b" type="m" corresp="#s2:l2">quaed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Heer doed all’ mijn <rhyme label="a" type="f">werkken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Daer is geen vrije <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Nae ’t les van onze <rhyme label="a" type="f" corresp="#s3:l1">Kerkken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Des ik mijn houde <rhyme label="b" type="m" corresp="#s3:l2">stil</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe komt dan God te <rhyme label="a" type="f">noden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Den mensche tottet <rhyme label="b" type="m">goed</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Indien hy noch <rhyme label="a" type="f" corresp="#s4:l1">geboden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Noch quaed vrywillig <rhyme label="b" type="m" corresp="#s4:l2">doed</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dits tegens alle <rhyme label="a" type="f">reden</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">En zeker, ’t waer <rhyme label="b" type="m">geraen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Met stokken opde <rhyme label="a" type="f" corresp="#s5:l1">leden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dits les te doen <rhyme label="b" type="m" corresp="#s5:l2">verstaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Zoo lang tot dat de <rhyme label="a" type="f">lenden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Geslagen blau en <rhyme label="b" type="m">lam</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">De vrye wil <rhyme label="a" type="f" corresp="#s6:l1">bekenden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Die ons de doling <rhyme label="b" type="m" corresp="#s6:l2">nam</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zegt dan uw’ nieuwe <rhyme label="a" type="f">Klerken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">(Dit dient voor al <rhyme label="b" type="m">bemerkt</rhyme>)</l>
        <l id="s7:l3" met="3" type="-+">Dat wy mee moeten <rhyme label="a" type="f" corresp="#s7:l1">werken</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Wanneer God in ons <rhyme label="b" type="m" corresp="#s7:l2">werkt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dit maekt, van Godes <rhyme label="a" type="f">wegen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">d’Apostel ons <rhyme label="b" type="m">bekend</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Niet ik, maer Godes <rhyme label="a" type="f" corresp="#s8:l1">zegen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Met my. En hier ist <rhyme label="b" type="m" corresp="#s8:l2">end</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
