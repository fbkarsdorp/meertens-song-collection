  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">JEsus sijn reyse <rhyme label="a" type="m">dee</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Door 't midden van <rhyme label="b" type="f">Samaren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En 't Landt van <rhyme label="a" type="m" corresp="#s1:l1">Galilee</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">t'Jerusalem te <rhyme label="b" type="f" corresp="#s1:l2">varen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En quam by een <rhyme label="c" type="f">Casteele</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Als hy gingh in die <rhyme label="d" type="m">plaets</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Riepen met luyder <rhyme label="c" type="f" corresp="#s1:l5">keele</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Tien mannen vol <rhyme label="d" type="m" corresp="#s1:l6">melaets</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sy riepen al van <rhyme label="a" type="m">veer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met klagen en met <rhyme label="b" type="f">kermen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">O Iesu, goeden <rhyme label="a" type="m" corresp="#s2:l1">Heer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wilt onser togh <rhyme label="b" type="f" corresp="#s2:l2">ontfermen</rhyme>!</l>
        <l id="s2:l5" met="3" type="-+">Als Iesus haer <rhyme label="c" type="f">aenschoude</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Heeft haer te last <rhyme label="d" type="m">geset</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat s'haer de Priesters <rhyme label="c" type="f" corresp="#s2:l5">soude</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Vertoonen na de <rhyme label="d" type="m" corresp="#s2:l6">Wet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Siet, als sy gingen <rhyme label="a" type="m">heen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sijn s'altemael <rhyme label="b" type="f">geneesen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Van haer weerkeerden <rhyme label="a" type="m" corresp="#s3:l1">een</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En heeft den Heer <rhyme label="b" type="f" corresp="#s3:l2">gepreesen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Hy viel ter aerden <rhyme label="c" type="f">neere</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Greep Iesus voeten <rhyme label="d" type="m">aen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En dankten Godt den <rhyme label="c" type="f" corresp="#s3:l5">Heere</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">'t Was een <rhyme label="d" type="m" corresp="#s3:l6">Samaritaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Heer Iesus heeft <rhyme label="a" type="m">geseydt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En hebben niet <rhyme label="b" type="f">gekreegen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Tien haer <rhyme label="a" type="m" corresp="#s4:l1">gesondigheydt</rhyme>?</l>
        <l id="s4:l4" met="3" type="-+">Waer sijn de ander <rhyme label="b" type="f" corresp="#s4:l2">neegen</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">Is 't niet een wonder <rhyme label="c" type="f">dinge</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat niemant <rhyme label="d" type="m">weder-keer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dan deesen <rhyme label="c" type="f" corresp="#s4:l5">vreemdelinge</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En geeve Godt de <rhyme label="d" type="m" corresp="#s4:l6">eer</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Staet op <rhyme label="a" type="m">Samaritaen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">G' hebt uw' <rhyme label="b" type="f">gesondigheede</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Door uw' geloof <rhyme label="a" type="m" corresp="#s5:l1">ontfaen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gaet nu vry heen in <rhyme label="b" type="f" corresp="#s5:l2">vreede</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Heer, laet ons dangkbaer <rhyme label="c" type="f">weesen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Met den <rhyme label="d" type="m">Samaritaen</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">Want gy komt ons <rhyme label="c" type="f" corresp="#s5:l5">geneesen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Van onse schult <rhyme label="d" type="m" corresp="#s5:l6">ontslaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
