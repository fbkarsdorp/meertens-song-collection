<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>179646</id>
    <date>
      <year-start>1767</year-start>
      <year-end>1767</year-end>
    </date>
    <tags/>
    <melody>Zie hoe gelukkig zijn ze dan</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAt hoord men niet een vreemt <rhyme label="a" type="m">gerugt</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">In deze laetste <rhyme label="b" type="f">dagen</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Daer menig een om <rhyme label="a" type="m" corresp="#s1:l1">zugt</rhyme>!</l>
        <l id="s1:l4" met="3" type="-+">’t Was muytery <rhyme label="c" type="m">geweld</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dat menig heeft <rhyme label="c" type="m" corresp="#s1:l4">ontsteld</rhyme>!</l>
        <l id="s1:l6" met="3" type="-+">Hoord wat dit lied <rhyme label="c" type="m" corresp="#s1:l4">vermeld</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hoord wat dit lied <rhyme label="c" type="m" corresp="#s1:l4">vermeld</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Waer voerd de Satan niet al <rhyme label="a" type="m">heen</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">De mensch door zyne <rhyme label="b" type="f">listen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat hy door <rhyme label="a" type="m" corresp="#s2:l1">overtreen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En tegens wet en <rhyme label="c" type="m">pligt</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Het duyvels quaed <rhyme label="c" type="m" corresp="#s2:l4">verrigt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hoord wat ik heb <rhyme label="c" type="m" corresp="#s2:l4">Gedigt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hoord wat ik heb <rhyme label="c" type="m" corresp="#s2:l4">Gedigt</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">’t Schip Nyenburg met Volk <rhyme label="a" type="m">bemand</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van Hooren af <rhyme label="b" type="f">gevaren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Om na het Iavaes <rhyme label="a" type="m" corresp="#s3:l1">Land</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Te steev’ne met <rhyme label="c" type="m">Goed</rhyme></l>
        <l id="s3:l5" met="3" type="-+">En Geld, gantsch wel <rhyme label="c" type="m" corresp="#s3:l4">gemoed</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Hoord wat het quaed al <rhyme label="c" type="m" corresp="#s3:l4">doet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hoord wat het quaed al <rhyme label="c" type="m" corresp="#s3:l4">doet</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Verstokt en harder als een <rhyme label="a" type="m">steen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Zoo liepen <rhyme label="b" type="f">muytelingen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Het schip af tegen <rhyme label="a" type="m" corresp="#s4:l1">reen</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">En hebben <rhyme label="c" type="m">opstinaet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Bedreven: Moord en <rhyme label="c" type="m" corresp="#s4:l4">quaed</rhyme>!</l>
        <l id="s4:l6" met="3" type="-+">Als een boosaerdig <rhyme label="c" type="m" corresp="#s4:l4">zaed</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Als een boosaerdig <rhyme label="c" type="m" corresp="#s4:l4">zaed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Naer goud en Goed gerooft zeer <rhyme label="a" type="m">groot</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Zoo toog men aen het <rhyme label="b" type="f">vlugten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Ter Zee-waerd met een <rhyme label="a" type="m" corresp="#s5:l1">Boot</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Kwam te Cajenne <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Daer menze kreeg <rhyme label="c" type="m" corresp="#s5:l4">gevaen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Om hunne <rhyme label="c" type="m" corresp="#s5:l4">Euveldaen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Om hunne <rhyme label="c" type="m" corresp="#s5:l4">Euveldaen</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Men voerde hen na <rhyme label="a" type="m">Lissabon</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Herwaerds in boey en <rhyme label="b" type="f">banden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Toen aller ramp <rhyme label="a" type="m" corresp="#s6:l1">begon</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Maer die eens <rhyme label="c" type="m">openbaer</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Gestraft wierd na een <rhyme label="c" type="m" corresp="#s6:l4">Iaer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Zoo meld de droeve <rhyme label="c" type="m" corresp="#s6:l4">maer</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Zoo meld de droeve <rhyme label="c" type="m" corresp="#s6:l4">maer</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Vier zyn gesneuveld door die <rhyme label="a" type="m">strop</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En hangen ten <rhyme label="b" type="f">Spektakel</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Voor Ravens de hun <rhyme label="a" type="m" corresp="#s7:l1">op</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Eeten, nog drie in <rhyme label="c" type="m">zoort</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Om hunne Roof en <rhyme label="c" type="m" corresp="#s7:l4">moord</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Gerabraekt als het <rhyme label="c" type="m" corresp="#s7:l4">hoord</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Gerabraekt als het <rhyme label="c" type="m" corresp="#s7:l4">hoord</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Tien zag men daer op Helders <rhyme label="a" type="m">stee</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Door hennepe strop vast <rhyme label="b" type="f">knoopen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dus schuymt men ’t quaed op <rhyme label="a" type="m" corresp="#s8:l1">Zee</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Dat muyterye <rhyme label="c" type="m">dee</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En ’t strekt ten spiegel <rhyme label="c" type="m" corresp="#s8:l4">mee</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Van Varens-volk op <rhyme label="c" type="m" corresp="#s8:l4">See</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Van Varens-volk op <rhyme label="c" type="m" corresp="#s8:l4">See</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Voor dat de Vierschaer wierd <rhyme label="a" type="m">gespant</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Sag men bedroefde <rhyme label="b" type="f">oogen</rhyme>!</l>
        <l id="s9:l3" met="3" type="-+">Ontsteld in ’t <rhyme label="a" type="m" corresp="#s9:l1">Ingewand</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Riep men den Heiland <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Met bidden en <rhyme label="c" type="m" corresp="#s9:l4">getraen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Vergeef heer ons <rhyme label="c" type="m" corresp="#s9:l4">misdaen</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Vergeef heer ons <rhyme label="c" type="m" corresp="#s9:l4">misdaen</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wie weet hoe dat de <rhyme label="a" type="m">boetgezand</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Hun boosheid quam <rhyme label="b" type="f">vertonen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Het riep: ô <rhyme label="a" type="m" corresp="#s10:l1">Predikant</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Smeek voor ons by de <rhyme label="c" type="m">Troon</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Dat Godt ons dog <rhyme label="c" type="m" corresp="#s10:l4">verschoon</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">In ’t bloed van Synen <rhyme label="c" type="m" corresp="#s10:l4">Soon</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">In ’t bloed van Synen <rhyme label="c" type="m" corresp="#s10:l4">Soon</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Als yder zag dat <rhyme label="a" type="m">Straf-gerigt</rhyme>!</l>
        <l id="s11:l2" met="3" type="-+">Wat was het niet <rhyme label="b" type="f">bewogen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">By Kyk-duin zwaer <rhyme label="a" type="m" corresp="#s11:l1">verrigt</rhyme>!</l>
        <l id="s11:l4" met="3" type="-+">Elk smeekte in ’t <rhyme label="c" type="m">gemoed</rhyme>!</l>
        <l id="s11:l5" met="3" type="-+">Vergeef dit quaed <rhyme label="c" type="m" corresp="#s11:l4">gebroed</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">En schenkt hun ’t Eeuwig <rhyme label="c" type="m" corresp="#s11:l4">goed</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">En schenkt hun ’t Eeuwig <rhyme label="c" type="m" corresp="#s11:l4">goed</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Men prys het Zouveryne <rhyme label="a" type="m">Regt</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Van Zeeraeds <rhyme label="b" type="f">Opper-hoofden</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">’t Quaed moet als Gods Woord <rhyme label="a" type="m" corresp="#s12:l1">zegd</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Zyn straf naer schuld <rhyme label="c" type="m">ontfaen</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Laet af van quade <rhyme label="c" type="m" corresp="#s12:l4">daen</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Dan zal Godt met u <rhyme label="c" type="m" corresp="#s12:l4">gaen</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Dan zal Godt met u <rhyme label="c" type="m" corresp="#s12:l4">gaen</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>
