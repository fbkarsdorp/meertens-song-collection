  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Laat, naa uw woord aan <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Nu, Heer, uw dienstknecht <rhyme label="a" type="m" corresp="#s1:l1">vry</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">In vreeden, uit dit <rhyme label="b" type="f">leeven</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Myn oog had lang <rhyme label="c" type="m">gebeidt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Nu sag 't uw <rhyme label="c" type="m" corresp="#s1:l4">saaligheit</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die gy ons zoude <rhyme label="b" type="f" corresp="#s1:l3">geeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ik sag dat saalig <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat oover al 't <rhyme label="a" type="m" corresp="#s2:l1">gesigt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Der volken zal <rhyme label="b" type="f">verlichten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Der heidenen zo <rhyme label="c" type="m">wel</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Als van uw <rhyme label="c" type="m" corresp="#s2:l4">IsraÃ«l</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dien 't ook veel eers zal <rhyme label="b" type="f" corresp="#s2:l3">stichten</rhyme>.</l>
      </lg>
    </lg>
