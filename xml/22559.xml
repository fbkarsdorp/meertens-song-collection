  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hier boven in den <rhyme label="a" type="f">hemel</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Daer woent mijn soete <rhyme label="b" type="m">Lief</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Ende ic bin hier <rhyme label="c" type="f">beneden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ist dat niet groot <rhyme label="b" type="m" corresp="#s1:l2">verdriet</rhyme>?</l>
        <l id="s1:l5" met="3" type="-+">Och, mocht ic by Hem <rhyme label="d" type="f">comen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Mijn lijden soude my <rhyme label="d" type="f" corresp="#s1:l5">vromen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Als ic ontbonden <rhyme label="b" type="m" corresp="#s1:l2">bin</rhyme>.</l>
        <l id="s1:l8" met="3" type="-+">Och, mocht ic by Hem <rhyme label="d" type="f" corresp="#s1:l5">comen</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Mijn lijden soude my <rhyme label="d" type="f" corresp="#s1:l5">vromen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Als ic ontbonden <rhyme label="b" type="m" corresp="#s1:l2">bin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'Nu hoert, verweende <rhyme label="a" type="f">siele</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hier boven in den <rhyme label="b" type="m">thron</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Daer singhen alle die <rhyme label="c" type="f">enghelen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van Jhesus' minne <rhyme label="b" type="m" corresp="#s2:l2">schoen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Maria gaet daer aen den <rhyme label="d" type="f">dans</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die maechden draghen den <rhyme label="d" type="f" corresp="#s2:l5">rosencrans</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Daer op een gulden <rhyme label="b" type="m" corresp="#s2:l2">croen'</rhyme>.</l>
        <l id="s2:l8" met="3" type="-+">Maria gaet daer aen den <rhyme label="d" type="f" corresp="#s2:l5">dans</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Die maechden draghen den <rhyme label="d" type="f" corresp="#s2:l5">rosencrans</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Daer op een gulden <rhyme label="b" type="m" corresp="#s2:l2">croen'</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die Lieve Maecht <rhyme label="a" type="f">Maria</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Is daer die <rhyme label="b" type="m">Coninghinne</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ende alle die reyne <rhyme label="c" type="f">maechden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die sijn van Haeren <rhyme label="b" type="m" corresp="#s3:l2">ghesin</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Die priesteren ende die <rhyme label="d" type="f">moniken</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die susteren ende die <rhyme label="d" type="f" corresp="#s3:l5">kanunniken</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Die sellen bi Haer <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>.</l>
        <l id="s3:l8" met="3" type="-+">Die priesteren ende die <rhyme label="d" type="f" corresp="#s3:l5">moniken</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Die susteren ende die <rhyme label="d" type="f" corresp="#s3:l5">kanunniken</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Die sellen bi Haer <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Davidt mitter <rhyme label="a" type="f">herpen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Spelt voer die maechden <rhyme label="b" type="m">smal</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die IX cooren der <rhyme label="c" type="f">enghelen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die jubeleeren <rhyme label="b" type="m" corresp="#s4:l2">al</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Soe comen alle die <rhyme label="d" type="f">maechden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Die dat cransken <rhyme label="d" type="f" corresp="#s4:l5">draghen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ende loven Heer Jhesus <rhyme label="b" type="m" corresp="#s4:l2">al</rhyme>.</l>
        <l id="s4:l8" met="3" type="-+">Soe comen alle die <rhyme label="d" type="f" corresp="#s4:l5">maechden</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Die dat cransken <rhyme label="d" type="f" corresp="#s4:l5">draghen</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Ende loven Heer Jhesus <rhyme label="b" type="m" corresp="#s4:l2">al</rhyme>.</l>
      </lg>
    </lg>
  </text>
