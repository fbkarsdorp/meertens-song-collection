  <author>Guilielmus Bolognino</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Mensch, zijt ghy soo <rhyme label="a" type="m">blindt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat ghy 't bedrogh <rhyme label="a" type="m" corresp="#s1:l1">bemint</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Gheheel 't <rhyme label="b" type="m">ghemoedt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Hecht aen den schijn van 't <rhyme label="b" type="m" corresp="#s1:l3">goedt</rhyme>?</l>
        <l id="s1:l5" met="3" type="-+">Eens d'ooghen open <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En kent 't waerachtigh <rhyme label="c" type="m" corresp="#s1:l5">goedt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Om daer eens nae te <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">De valscheydt af te <rhyme label="d" type="m" corresp="#s1:l7">gaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De ware eer en <rhyme label="a" type="m">vreught</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En rijckdom, in de <rhyme label="a" type="m" corresp="#s2:l1">deught</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Hier soecken <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Betrachten vroegh en <rhyme label="b" type="m" corresp="#s2:l3">laet</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Meer hy de vreught <rhyme label="c" type="m">ontloopt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Jae druck in 't hert meer <rhyme label="c" type="m" corresp="#s2:l5">hoopt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die sond' doet om de <rhyme label="d" type="m">vreught</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Die noot oprecht <rhyme label="d" type="m" corresp="#s2:l7">verheught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Beschaemt dan zy die 't <rhyme label="a" type="m">quaedt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Om niet bedrijven <rhyme label="a" type="m" corresp="#s3:l1">gaet</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Verwacht <rhyme label="b" type="m">ghenucht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Maer pijn vindt en <rhyme label="b" type="m" corresp="#s3:l3">ghesucht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Schad' oneer t' alle <rhyme label="c" type="m">zy</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ghewint, en noch daer <rhyme label="c" type="m" corresp="#s3:l5">by</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Het eeuwigh helsch <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Verliest Godts hoogh <rhyme label="d" type="m" corresp="#s3:l7">gheniet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">U ooghen dan <rhyme label="a" type="m">ontsluyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En zijt niet meer soo <rhyme label="a" type="m" corresp="#s4:l1">uyt</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Om hier te <rhyme label="b" type="m">gaen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Door sond' nae vreughden <rhyme label="b" type="m" corresp="#s4:l3">staen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Soeckt vreught daer s' is <rhyme label="c" type="m">ghewis</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Daer sy te vinden <rhyme label="c" type="m" corresp="#s4:l5">is</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Op dat ghy 't alle <rhyme label="d" type="m">ty</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Zijt hier en naermaels <rhyme label="d" type="m" corresp="#s4:l7">bly</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Bly in het hemelsch <rhyme label="a" type="m">Hof</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Daer ghy des Heeren <rhyme label="a" type="m" corresp="#s5:l1">lof</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Staegh singhen <rhyme label="b" type="m">sult</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Van allen goedt <rhyme label="b" type="m" corresp="#s5:l3">vervult</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Waer in een eeuwigh <rhyme label="c" type="m">licht</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Vervreught Godts claer <rhyme label="c" type="m" corresp="#s5:l5">ghesicht</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En allen druck en <rhyme label="d" type="m">smert</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Bant uyt 't gheluckigh <rhyme label="d" type="m" corresp="#s5:l7">hert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O oorspronck aller <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Heft op mijn swaer <rhyme label="a" type="m" corresp="#s6:l1">ghemoedt</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Dat tracht <rhyme label="b" type="m">altijdt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In't aerdts te zijn <rhyme label="b" type="m" corresp="#s6:l3">verblijdt</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Leert dat door ware <rhyme label="c" type="m">deught</rhyme></l>
        <l id="s6:l6" met="3" type="-+">In u hier soecken <rhyme label="c" type="m" corresp="#s6:l5">vreught</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Want buyten u is <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Dan lijden en <rhyme label="d" type="m" corresp="#s6:l7">verdriet</rhyme>.</l>
      </lg>
    </lg>
  </text>
