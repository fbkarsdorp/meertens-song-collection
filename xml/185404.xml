    <melody>Rozemond die lag gedoken</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MAg men niet te regt <rhyme label="a" type="f">gelijken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dese Werelt by een <rhyme label="b" type="m">Val</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Werelt die aen ons doet <rhyme label="a" type="f" corresp="#s1:l1">blijken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat sy ons bedriegen <rhyme label="b" type="m" corresp="#s1:l2">sal</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Werelt! gy lokt mijn <rhyme label="c" type="m">gemoet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Als de Val het Muysjen <rhyme label="c" type="m" corresp="#s1:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Sathan (om de Ziel te <rhyme label="a" type="f">vangen</rhyme>)</l>
        <l id="s2:l2" met="4" type="+-">Heeft het lokaes van zijn <rhyme label="b" type="m">vreugt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">In des werelts Val <rhyme label="a" type="f" corresp="#s2:l1">gehangen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Tot bekoring van mijn <rhyme label="b" type="m" corresp="#s2:l2">jeugt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">En hy lokt my met dat <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Als de Val dat Muysjen <rhyme label="c" type="m" corresp="#s2:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">’t Muysjen in de Val <rhyme label="a" type="f">getogen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Door die graegte van het <rhyme label="b" type="m">aes</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Voelt sig onvoorsiens <rhyme label="a" type="f" corresp="#s3:l1">bedrogen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En ’t beklaegt zijn lust, <rhyme label="b" type="m" corresp="#s3:l2">helaes</rhyme>!</l>
        <l id="s3:l5" met="4" type="+-">En het vind sig heel <rhyme label="c" type="m">bedroeft</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Wort een weynig, naeu <rhyme label="c" type="m" corresp="#s3:l5">beproeft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Rijkdom, wellust, werelts <rhyme label="a" type="f">eere</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Staetzugt, pragt en <rhyme label="b" type="m">hovaerdy</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daer beneffens te <rhyme label="a" type="f" corresp="#s4:l1">begeere</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Wellust, weelde, <rhyme label="b" type="m" corresp="#s4:l2">leckerny</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">’t Is maer voor een korten <rhyme label="c" type="m">tijd</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Daer de Ziel soo lang om <rhyme label="c" type="m" corresp="#s4:l5">lijd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Eermen ’t Aes begint te <rhyme label="a" type="f">proeven</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Valt de val van ’t Leven <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En de Ziel raekt in ’t <rhyme label="a" type="f" corresp="#s5:l1">bedroeven</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Want men leeft ‘k en weet niet <rhyme label="b" type="m" corresp="#s5:l2">hoe</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Heden is men rijk, en <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Morgen leyt het Lichaem <rhyme label="c" type="m" corresp="#s5:l5">dood</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
