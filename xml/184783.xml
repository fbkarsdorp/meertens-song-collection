  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Maria, Maeght, die <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">In den Tempel syt <rhyme label="a" type="f" corresp="#s1:l1">getreden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Om de wet te <rhyme label="b" type="m">onderstaen</rhyme>!</l>
        <l id="s1:l4" met="4" type="+-">Daer gy schoon waert als de <rhyme label="c" type="f">straelen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Die uyt s'Hemels hoven <rhyme label="c" type="f" corresp="#s1:l4">daelen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Schoonder als de silver <rhyme label="b" type="m" corresp="#s1:l3">Maen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Simeon quamp u <rhyme label="a" type="f">ontmoeten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Om uw Kindeken te <rhyme label="a" type="f" corresp="#s2:l1">groeten</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dat hy in syn armen <rhyme label="b" type="m">nam</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Wenschte t'eynde van syn <rhyme label="c" type="f">daegen</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Die bly' tydinge te <rhyme label="c" type="f" corresp="#s2:l4">draegen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Aen syn Vader <rhyme label="b" type="m" corresp="#s2:l3">Abraham</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ah! mocht ick het eens <rhyme label="a" type="f">aenschouwen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En oock in myn armen <rhyme label="a" type="f" corresp="#s3:l1">douwen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Met een diep' <rhyme label="b" type="m">ootmoedigheydt</rhyme>!</l>
        <l id="s3:l4" met="4" type="+-">Noch om leven, noch om <rhyme label="c" type="f">sterven</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Soud' ick Jesus willen <rhyme label="c" type="f" corresp="#s3:l4">derven</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">Jesus is myn <rhyme label="b" type="m" corresp="#s3:l3">Saeligheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
