    <tags/>
    <melody>Que me sert-il de soupirer</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe bangh is my, Ã´ lieve <rhyme label="a" type="m">God</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Wat droefheyt komt mijn hert <rhyme label="b" type="f">bestoken</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Ick ben geworden yder <rhyme label="a" type="m" corresp="#s1:l1">spot</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Mijn goede naem die is <rhyme label="b" type="f" corresp="#s1:l2">gebroken</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dat ick eens hiet mijn beste <rhyme label="c" type="m">schat</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Wort nu een gecx-maer door de <rhyme label="c" type="m" corresp="#s1:l5">stadt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wanneer ick aen de deure <rhyme label="a" type="m">stae</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Of over strate koom <rhyme label="b" type="f">getreden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Men wijst my schier met vingers <rhyme label="a" type="m" corresp="#s2:l1">nae</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En ick en wist noyt eens de <rhyme label="b" type="f" corresp="#s2:l2">reden</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Maergister heb ick eerst <rhyme label="c" type="m">verstaen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Waerom my smaet wert <rhyme label="c" type="m" corresp="#s2:l5">aengedaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer wort gemompelt over <rhyme label="a" type="m">al</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat ick mijn eer heb laten <rhyme label="b" type="f">rooven</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">En siet! het schendigh <rhyme label="a" type="m" corresp="#s3:l1">ongeval</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dat wil men over al <rhyme label="b" type="f" corresp="#s3:l2">gelooven</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Het schijnt men weet het gansch <rhyme label="c" type="m">bescheyt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">En t'worter klaerlijck by <rhyme label="c" type="m" corresp="#s3:l5">geseyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O valsche tongen, vol <rhyme label="a" type="m">fenijn</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Waer uyt hebtghy dit gif <rhyme label="b" type="f">gefongen</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">'Tis sonder daet, en sonder <rhyme label="a" type="m" corresp="#s4:l1">schijn</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Al wat op my is uyt <rhyme label="b" type="f" corresp="#s4:l2">gespogen</rhyme>;</l>
        <l id="s4:l5" met="4" type="-+">O klappers wie ghy wesen <rhyme label="c" type="m">meught</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Ghy schent den glans van mijne <rhyme label="c" type="m" corresp="#s4:l5">jeught</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Eylaes wat is een jonge <rhyme label="a" type="m">maeght</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Als sy, gegeeselt van de <rhyme label="b" type="f">tongen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Wort door een boosen klap <rhyme label="a" type="m" corresp="#s5:l1">geplaeght</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En in haer goeden naem <rhyme label="b" type="f" corresp="#s5:l2">besprongen</rhyme>?</l>
        <l id="s5:l5" met="4" type="-+">Al is haer eere niet <rhyme label="c" type="m">gerooft</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Noch wort het quaetste wel <rhyme label="c" type="m" corresp="#s5:l5">gelooft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer ghy, o Godt, die't al door <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Die hert en nieren komt <rhyme label="b" type="f">door-gronden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ghy weet dat noyt en is <rhyme label="a" type="m" corresp="#s6:l1">geschiet</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Al wat de vuyle <rhyme label="b" type="f" corresp="#s6:l2">laster-monden</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Gaen stroeyen door het gansche <rhyme label="c" type="m">lant</rhyme>.</l>
        <l id="s6:l6" met="4" type="-+">Tot naedeel van mijn beste <rhyme label="c" type="m" corresp="#s6:l5">pant</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ghy weet dat ick onschuldigh <rhyme label="a" type="m">ben</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En noyt de schennis heb <rhyme label="b" type="f">bedreven</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Ghy weet dar ick geen man en <rhyme label="a" type="m" corresp="#s7:l1">ken</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Dien ick mijn eer heb wegh <rhyme label="b" type="f" corresp="#s7:l2">gegeven</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">Ghy weet dat ick een reynen <rhyme label="c" type="m">schoot</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Beware voor mijn <rhyme label="c" type="m" corresp="#s7:l5">bed-genoot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Geef dat ghelijck een <rhyme label="a" type="m">dageraet</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Mijn onschult sich mach <rhyme label="b" type="f">openbaren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En dat mijn leven metter <rhyme label="a" type="m" corresp="#s8:l1">daet</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Mijn eerbaer herte mach <rhyme label="b" type="f" corresp="#s8:l2">verklaren</rhyme>;</l>
        <l id="s8:l5" met="4" type="-+">Op dat ick eenster rechter <rhyme label="c" type="m">tijt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Van schande mochte zyn <rhyme label="c" type="m" corresp="#s8:l5">bevrijt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ick sal terwijl in droeve <rhyme label="a" type="m">pijn</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Tot u, mijn God, geduerigh <rhyme label="b" type="f">schreyen</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Ick sal den Heere stille <rhyme label="a" type="m" corresp="#s9:l1">zyn</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Want zynen troost wil ick <rhyme label="b" type="f" corresp="#s9:l2">verbeyen</rhyme>;</l>
        <l id="s9:l5" met="4" type="-+">Het ancker van een reyn <rhyme label="c" type="m">ghemoet</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Is staeg (maer hier ten hoosten) <rhyme label="c" type="m" corresp="#s9:l5">goet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Doch soo ghy des al niet te <rhyme label="a" type="m">min</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Mijn ziel door schande wilt <rhyme label="b" type="f">beproeven</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Soo stort my dijnen segen <rhyme label="a" type="m" corresp="#s10:l1">in</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En laet my niet te seer <rhyme label="b" type="f" corresp="#s10:l2">bedroeven</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Maer stijft mijn herte met <rhyme label="c" type="m">gedult</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Dat ick mach lijden sonder <rhyme label="c" type="m" corresp="#s10:l5">schult</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ick weet hier namaels komt een <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dan sult ghy, Heer, eens rechter <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En niet de tongh vol wrange <rhyme label="a" type="m" corresp="#s11:l1">spijt</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Die tegens my nu is <rhyme label="b" type="f" corresp="#s11:l2">gheresen</rhyme>;</l>
        <l id="s11:l5" met="4" type="-+">Dan sal het komen aen den <rhyme label="c" type="m">dagh</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Al watter oyt in't duyster <rhyme label="c" type="m" corresp="#s11:l5">lagh</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maer ghy vergeeft 'them die het <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En geeft hem voortaen beter <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En, soo ick hier nu lijden <rhyme label="a" type="m" corresp="#s12:l1">moet</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Soo laet my naemaels troost <rhyme label="b" type="f" corresp="#s12:l2">gewinnen</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Dit hoop ick, Heer, dit stel ick <rhyme label="c" type="m">vast</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">En daer op draeg ick desen <rhyme label="c" type="m" corresp="#s12:l5">last</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
