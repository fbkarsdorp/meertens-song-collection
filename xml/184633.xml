    <melody>De zoete tijden van het meiseizoen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">BRenght, gulden <rhyme label="a" type="f">regen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Den lanck gewenschten <rhyme label="a" type="f" corresp="#s1:l1">zegens</rhyme>;</l>
        <l id="s1:l3" met="2" type="-+">O Godt daelt <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Brenght ons den vrede <rhyme label="b" type="m" corresp="#s1:l3">weer</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Breekt onse <rhyme label="c" type="f">banden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Doet ons in liefde <rhyme label="c" type="f" corresp="#s1:l5">branden</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Dat d'aerde <rhyme label="d" type="m">blaekt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Die naer uw' menscheydt <rhyme label="d" type="m" corresp="#s1:l7">haekt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Gy voor ons <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hebt u gestelt te <rhyme label="a" type="f" corresp="#s2:l1">geven</rhyme>:</l>
        <l id="s2:l3" met="2" type="-+">Waer blyft dien <rhyme label="b" type="m">tydt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die ons geluck <rhyme label="b" type="m" corresp="#s2:l3">benydt</rhyme>?</l>
        <l id="s2:l5" met="2" type="-+"><rhyme label="c" type="f">Slagh-offerhande</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wanneer komt gy hier <rhyme label="c" type="f" corresp="#s2:l5">branden</rhyme>?</l>
        <l id="s2:l7" met="2" type="-+">Want door u <rhyme label="d" type="m">moet</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Den Hemel syn <rhyme label="d" type="m" corresp="#s2:l7">versoet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Stelt vraek ter <rhyme label="a" type="f">syden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Weirt af het helsche <rhyme label="a" type="f" corresp="#s3:l1">stryden</rhyme>:</l>
        <l id="s3:l3" met="2" type="-+">Dat uwe <rhyme label="b" type="m">macht</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Verplet des vyandts <rhyme label="b" type="m" corresp="#s3:l3">kracht</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Ah! wordt <rhyme label="c" type="f">geboren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Voor ons, soo lanck <rhyme label="c" type="f" corresp="#s3:l5">verloren</rhyme>:</l>
        <l id="s3:l7" met="2" type="-+"><rhyme label="d" type="m">Bermhertigheydt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Godt, voor <rhyme label="d" type="m" corresp="#s3:l7">Rechtveerdigheydt</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
