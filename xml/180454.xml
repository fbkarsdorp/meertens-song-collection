<song>
  <meta>
    <id>180454</id>
    <date>
      <year-start>1660</year-start>
      <year-end>1660</year-end>
    </date>
    <location>
      <orginal-name>leuven</orginal-name>
      <standard-name>Leuven, Belgium</standard-name>
      <coordinates>
        <lon>50.879202</lon>
        <lat>4.7011675</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Herders hij is geboren</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Boven all’ hoogh <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O Aldersoetste <rhyme label="b" type="m">Broodt</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Dat voor ons is <rhyme label="a" type="f" corresp="#s1:l1">geresen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Al uyt des Hemelsch <rhyme label="b" type="m" corresp="#s1:l2">schoot</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Om ons te spijsen <rhyme label="c" type="m">all</rhyme>’</l>
        <l id="s1:l6" met="3" type="-+">In ‘t droevigh tranen <rhyme label="c" type="m" corresp="#s1:l5">dall</rhyme>’,</l>
        <l id="s1:l7" met="3" type="-+">O Aldersoetste <rhyme label="d" type="m">Broot</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Spyst ons in hongers <rhyme label="d" type="m" corresp="#s1:l7">noot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Door u soo wou Godt <rhyme label="a" type="f">maecken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hier aen ons all’ <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat allen d’oude <rhyme label="a" type="f" corresp="#s2:l1">saecken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Eens souden hebben <rhyme label="b" type="m" corresp="#s2:l2">endt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Het Man’ in d <rhyme label="c" type="m">Woestyn</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Kost geen versadingh <rhyme label="c" type="m" corresp="#s2:l5">zijn</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Want dit van kleyn <rhyme label="d" type="m">gewicht</rhyme></l>
        <l id="s2:l8" met="3" type="-+">De Vaders scheen te <rhyme label="d" type="m" corresp="#s2:l7">licht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Quackels die daer <rhyme label="a" type="f">vielen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Smaeckten het lichaem <rhyme label="b" type="m">wel</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Maer daer door haere <rhyme label="a" type="f" corresp="#s3:l1">Zielen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wierden aen Godt <rhyme label="b" type="m" corresp="#s3:l2">rebel</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Wie dese dan <rhyme label="c" type="m">genoot</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Voor straff soo quam de <rhyme label="c" type="m" corresp="#s3:l5">doodt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Dus dese spijse <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Aenbrocht als groot <rhyme label="d" type="m" corresp="#s3:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Godt nu een beter <rhyme label="a" type="f">voetsel</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Geeft hier in onsen <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat ons van ‘t quaet <rhyme label="a" type="f" corresp="#s4:l1">gebroetsel</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Bevrydt al voor de <rhyme label="b" type="m" corresp="#s4:l2">Doodt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Hy nu een spyse <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Daer men van Eeuwigh <rhyme label="c" type="m" corresp="#s4:l5">leeft</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Tot troost in groot <rhyme label="d" type="m">verdriet</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Den mensch dees nu <rhyme label="d" type="m" corresp="#s4:l7">geniet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dit broot wirdt ons <rhyme label="a" type="f">geboren</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hier van een suyver <rhyme label="b" type="m">Maeght</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Die Godt daer toe <rhyme label="a" type="f" corresp="#s5:l1">verkoren</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Heeft boven all’ <rhyme label="b" type="m" corresp="#s5:l2">behaeght</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Want dese sonder <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Baerden ons <rhyme label="c" type="m" corresp="#s5:l5">Medecijn</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Van d’aldergrootste <rhyme label="d" type="m">kracht</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Naer dees alleen dan <rhyme label="d" type="m" corresp="#s5:l7">tracht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Godt comt dan <rhyme label="a" type="f">neder-dalen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Vyt d’alderhooghste <rhyme label="b" type="m">sael</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En ons van alle <rhyme label="a" type="f" corresp="#s6:l1">qualen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Genesen <rhyme label="b" type="m" corresp="#s6:l2">altemael</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Op dat eens voor <rhyme label="c" type="m">altijdt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ons Ziel sou zijn <rhyme label="c" type="m" corresp="#s6:l5">bevrydt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Hier voor de snoode <rhyme label="d" type="m">doodt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Spijst ons all’ met sijn <rhyme label="d" type="m" corresp="#s6:l7">Broot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Christus als <rhyme label="a" type="f">Pellicane</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ons laeft oock met sijn <rhyme label="b" type="m">Bloet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En als <rhyme label="a" type="f" corresp="#s7:l1">Samaritane</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sorght voor ons metter <rhyme label="b" type="m" corresp="#s7:l2">spoet</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Tot voldoen voor den <rhyme label="c" type="m">Knecht</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Wirdt hy aen ‘t Cruysch <rhyme label="c" type="m" corresp="#s7:l5">gehecht</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Betaelt voor ons daer <rhyme label="d" type="m">all</rhyme>’,</l>
        <l id="s7:l8" met="3" type="-+">Den droeven Adams <rhyme label="d" type="m" corresp="#s7:l7">vall</rhyme>’.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dit was de <rhyme label="a" type="f">offerhande</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Daer hy soo langh <rhyme label="b" type="m">verwacht</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Om inde liefde <rhyme label="a" type="f" corresp="#s8:l1">brande</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En wilde sijn <rhyme label="b" type="m" corresp="#s8:l2">geslacht</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Want ons kost Bock noch <rhyme label="c" type="m">Ram</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Als dit onnoosel <rhyme label="c" type="m" corresp="#s8:l5">Lam</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Genesen <rhyme label="d" type="m">altemael</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Van onse groote <rhyme label="d" type="m" corresp="#s8:l7">quael</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dit Lam is nu <rhyme label="a" type="f">verborgen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Onder gedaent van <rhyme label="b" type="m">Broot</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Dus laet onnoodigh <rhyme label="a" type="f" corresp="#s9:l1">sorghen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">In u niet zijn te <rhyme label="b" type="m" corresp="#s9:l2">groot</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Dat aen ‘t verstandt <rhyme label="c" type="m">ontbreckt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">‘t Gelooff alleen <rhyme label="c" type="m" corresp="#s9:l5">voltreckt</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Stelt dit vast in u <rhyme label="d" type="m">hert</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Soo leeft ghy sonder <rhyme label="d" type="m" corresp="#s9:l7">smert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
