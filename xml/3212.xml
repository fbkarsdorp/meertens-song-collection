  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">ACh! benauwt <rhyme label="a" type="m">ghemoedt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Waer sal ick henen gaen om <rhyme label="b" type="m">raedt</rhyme>?</l>
        <l id="s1:l3" met="2" type="-+">Wilt u <rhyme label="c" type="f">keeren</rhyme></l>
        <l id="s1:l4" met="2" type="+-">Tot den <rhyme label="c" type="f" corresp="#s1:l3">Heere</rhyme>.</l>
        <l id="s1:l5" met="3" type="+-">Is daer heyl te <rhyme label="d" type="m">sien</rhyme>?</l>
        <l id="s1:l6" met="3" type="+-">Jae door waere <rhyme label="a" type="m" corresp="#s1:l1">boet</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Verkrijghtmen troost en <rhyme label="b" type="m" corresp="#s1:l2">zielen-baet</rhyme>.</l>
        <l id="s1:l8" met="2" type="+-">Als ick <rhyme label="e" type="f">suchte</rhyme>,</l>
        <l id="s1:l9" met="2" type="+-">Ween en <rhyme label="e" type="f" corresp="#s1:l8">duchte</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Sal hy bystandt <rhyme label="d" type="m" corresp="#s1:l5">bie'n</rhyme>?</l>
        <l id="s1:l11" met="2" type="+-">Als 't <rhyme label="f" type="m">verdriet</rhyme></l>
        <l id="s1:l12" met="2" type="+-">Puer <rhyme label="f" type="m" corresp="#s1:l11">gheschiedt</rhyme>,</l>
        <l id="s1:l13" met="3" type="+-">Uyt <rhyme label="g" type="f">eengrondt-beweghen</rhyme>:</l>
        <l id="s1:l14" met="2" type="+-">Als hy 't <rhyme label="f" type="m" corresp="#s1:l11">siet</rhyme></l>
        <l id="s1:l15" met="2" type="+-">Sal hy <rhyme label="f" type="m" corresp="#s1:l11">niet</rhyme></l>
        <l id="s1:l16" met="3" type="+-">Laten u <rhyme label="g" type="f" corresp="#s1:l13">verleghen</rhyme>.</l>
        <l id="s1:l17" met="4" type="+-">Ach! de sonde druckt te <rhyme label="h" type="m">hart</rhyme>.</l>
        <l id="s1:l18" met="4" type="+-">Godt verlicht de droeve <rhyme label="h" type="m" corresp="#s1:l17">smart</rhyme>.</l>
        <l id="s1:l19" met="4" type="+-">Sonde maeckt mijn ziel <rhyme label="h" type="m" corresp="#s1:l17">benart</rhyme>.</l>
        <l id="s1:l20" met="4" type="+-">Godt der sonden strick <rhyme label="h" type="m" corresp="#s1:l17">ontwart</rhyme>.</l>
        <l id="s1:l21" met="6" type="-+">Daer 't quaet noch altijt groeyt is, laes! de Deuchde <rhyme label="h" type="m" corresp="#s1:l17">vart</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Godt is goed, maer <rhyme label="a" type="m">recht</rhyme>.</l>
        <l id="s2:l2" met="4" type="-+">Jae oock ghenaedigh t'aller <rhyme label="b" type="m">tijdt</rhyme>.</l>
        <l id="s2:l3" met="2" type="-+">'t Ben vol <rhyme label="c" type="f">vreesen</rhyme>.</l>
        <l id="s2:l4" met="2" type="+-">t' Wordt <rhyme label="c" type="f" corresp="#s2:l3">gepresen</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Als 't in Godt <rhyme label="d" type="m">gheschiedt</rhyme>.</l>
        <l id="s2:l6" met="3" type="+-">'k Voel een swaer <rhyme label="a" type="m" corresp="#s2:l1">ghevecht</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Ick voel een schrickelijcken <rhyme label="b" type="m" corresp="#s2:l2">strijdt</rhyme></l>
        <l id="s2:l8" met="2" type="+-">In mijn <rhyme label="e" type="f">leden</rhyme>.</l>
        <l id="s2:l9" met="2" type="+-">Weest te <rhyme label="e" type="f" corresp="#s2:l8">vreden</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">Strijden hindert <rhyme label="d" type="m" corresp="#s2:l5">niet</rhyme>:</l>
        <l id="s2:l11" met="2" type="+-">Wie 't <rhyme label="f" type="m">begint</rhyme>,</l>
        <l id="s2:l12" met="2" type="+-">En <rhyme label="f" type="m" corresp="#s2:l11">verwint</rhyme></l>
        <l id="s2:l13" met="3" type="+-">Krijght de Croon der <rhyme label="g" type="f">eeren</rhyme>,</l>
        <l id="s2:l14" met="2" type="+-">'k Ben soo <rhyme label="f" type="m" corresp="#s2:l11">blindt</rhyme></l>
        <l id="s2:l15" met="2" type="+-">Als een <rhyme label="f" type="m" corresp="#s2:l11">kindt</rhyme>,</l>
        <l id="s2:l16" met="3" type="+-">'k Moet noch strijden <rhyme label="g" type="f" corresp="#s2:l13">leeren</rhyme>:</l>
        <l id="s2:l17" met="4" type="+-">'k Sterf soo Godt niet by en <rhyme label="h" type="m">staet</rhyme>.</l>
        <l id="s2:l18" met="4" type="+-">Godt die helpt dat ghy <rhyme label="h" type="m" corresp="#s2:l17">verslaet</rhyme>.</l>
        <l id="s2:l19" met="4" type="+-">Sonde brenghtme, laes! in <rhyme label="h" type="m" corresp="#s2:l17">haet</rhyme>.</l>
        <l id="s2:l20" met="4" type="+-">Waer berouw geeft weder <rhyme label="h" type="m" corresp="#s2:l17">baet</rhyme>.</l>
        <l id="s2:l21" met="6" type="-+">'t Is so, maer goet berouw comt veeltijdts al de <rhyme label="h" type="m" corresp="#s2:l17">laet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Noyt en mist de <rhyme label="a" type="m">deught</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die 't hart bewoont, van goet te <rhyme label="b" type="m">doen</rhyme>.</l>
        <l id="s3:l3" met="2" type="-+">'k Wil dan <rhyme label="c" type="f">poghen</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Nae <rhyme label="c" type="f" corresp="#s3:l3">vermoghen</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Af te laten 't <rhyme label="d" type="m">quaedt</rhyme>.</l>
        <l id="s3:l6" met="3" type="+-">Zijt in Godt <rhyme label="a" type="m" corresp="#s3:l1">verheught</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Wilt nae sijn heyl'ghe Wetten <rhyme label="b" type="m" corresp="#s3:l2">spoen</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Alles <rhyme label="e" type="f">weghen</rhyme></l>
        <l id="s3:l9" met="2" type="+-">Die te <rhyme label="e" type="f" corresp="#s3:l8">pleghen</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Staegh in ware <rhyme label="d" type="m" corresp="#s3:l5">daedt</rhyme>.</l>
        <l id="s3:l11" met="2" type="+-">Mijn <rhyme label="f" type="m">ghemoedt</rhyme></l>
        <l id="s3:l12" met="2" type="+-">Voelt 'et <rhyme label="f" type="m" corresp="#s3:l11">soet</rhyme></l>
        <l id="s3:l13" met="3" type="+-">In 'er neder <rhyme label="g" type="f">dalen</rhyme>.</l>
        <l id="s3:l14" met="2" type="+-">O! de <rhyme label="f" type="m" corresp="#s3:l11">boet</rhyme></l>
        <l id="s3:l15" met="2" type="+-">Wis die <rhyme label="f" type="m" corresp="#s3:l11">doet</rhyme></l>
        <l id="s3:l16" met="3" type="+-">U verghevingh <rhyme label="g" type="f" corresp="#s3:l13">halen</rhyme>.</l>
        <l id="s3:l17" met="4" type="+-">Godt versterck u <rhyme label="h" type="m">alle-tijdt</rhyme>.</l>
        <l id="s3:l18" met="4" type="+-">Godt maeckt mijn benaeuwtheydt <rhyme label="h" type="m" corresp="#s3:l17">quijt</rhyme>.</l>
        <l id="s3:l19" met="4" type="+-">Godts ghenaede streckt sich <rhyme label="h" type="m" corresp="#s3:l17">wijdt</rhyme>.</l>
        <l id="s3:l20" met="4" type="+-">Godt die heeft mijn ziel <rhyme label="h" type="m" corresp="#s3:l17">bevrijdt</rhyme>.</l>
        <l id="s3:l21" met="6" type="-+">Godt zegen al u doen. Leef wel, en weest <rhyme label="h" type="m" corresp="#s3:l17">verblijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
