  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Weest vrolijc! Het is <rhyme label="a" type="m">ghewordendach</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die sonne is <rhyme label="b" type="f">opgheghanghen</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Die Heer, die hevet ghewonnen den <rhyme label="c" type="m">strijt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hi heeft verlost Zijn <rhyme label="b" type="f" corresp="#s1:l2">ghevanghen</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Laet ons gaen een vroliken <rhyme label="d" type="m">ganc</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In goeder waerder <rhyme label="e" type="f">minnen</rhyme>;</l>
        <l id="s1:l7" met="4" type="-+">Die doer heeft Jhesus <rhyme label="f" type="m">opghedaen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Hi wil ons laten <rhyme label="e" type="f" corresp="#s1:l6">ynne</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die minne is dat beste <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat ummermeer mach <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die min, die doet den minnenden <rhyme label="c" type="m">mensche</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Al sonder arbeit <rhyme label="b" type="f" corresp="#s2:l2">leven</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Laet ons gaen een vroliken <rhyme label="d" type="m">ganc</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In goeder waerder <rhyme label="e" type="f">minnen</rhyme>;</l>
        <l id="s2:l7" met="4" type="-+">Die doer heeft Jhesus <rhyme label="f" type="m">opghedaen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Hi wil ons laten <rhyme label="e" type="f" corresp="#s2:l6">ynne</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Woude wi Jhesus volghen <rhyme label="a" type="m">na</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Een corte tijt in <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hi soude ons cronen, als ic <rhyme label="c" type="m">verstae</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ende maken ons <rhyme label="b" type="f" corresp="#s3:l2">coninnghinne</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Laet ons gaen een vroliken <rhyme label="d" type="m">ganc</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In goeder waerder <rhyme label="e" type="f">minnen</rhyme>;</l>
        <l id="s3:l7" met="4" type="-+">Die doer heeft Jhesus <rhyme label="f" type="m">opghedaen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Hi wil ons laten <rhyme label="e" type="f" corresp="#s3:l6">ynne</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Jhesus min, die breyde <rhyme label="a" type="m">scat</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die en can nyement <rhyme label="b" type="f">verwerven</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Wie Jhesus in sijn harte <rhyme label="c" type="m">draecht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hi mach wel vrolic <rhyme label="b" type="f" corresp="#s4:l2">sterven</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Laet ons gaen een vroliken <rhyme label="d" type="m">ganc</rhyme></l>
        <l id="s4:l6" met="3" type="-+">In goeder waerder <rhyme label="e" type="f">minnen</rhyme>;</l>
        <l id="s4:l7" met="4" type="-+">Die doer heeft Jhesus <rhyme label="f" type="m">opghedaen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Hi wil ons laten <rhyme label="e" type="f" corresp="#s4:l6">ynne</rhyme>.</l>
