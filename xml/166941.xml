  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hoe slegt lope de <rhyme label="a" type="f">Tyje</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat roept de Meysjes <rhyme label="a" type="f" corresp="#s1:l1">uyt</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">En Poulus laet het <rhyme label="b" type="m">glyje</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En Rosemond is de <rhyme label="b" type="m" corresp="#s1:l3">Bruyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het Iawoord was <rhyme label="a" type="f">gegeven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De Trouw die stont <rhyme label="a" type="f" corresp="#s2:l1">beschreven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En drie Geboden <rhyme label="b" type="m">gegaen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Nou wou Poulus daer niet <rhyme label="b" type="m" corresp="#s2:l3">aen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe vreemt is het <rhyme label="a" type="f">gelope</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Pou die is weg <rhyme label="a" type="f" corresp="#s3:l1">gekrope</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Dat niemant wist <rhyme label="b" type="m">opregt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Waer gebleven is die <rhyme label="b" type="m" corresp="#s3:l3">knegt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Men trok daer mee aen ‘t <rhyme label="a" type="f">zoeke</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Voor eerst in alle <rhyme label="a" type="f" corresp="#s4:l1">hoeke</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Een Paert moest op den <rhyme label="b" type="m">dyk</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En dat na <rhyme label="b" type="m" corresp="#s4:l3">Schalkwyk</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De Bruyd loep op haer <rhyme label="a" type="f">muylen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Na Breukelen maerse <rhyme label="a" type="f" corresp="#s5:l1">zuylen</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">De Meer heel in het <rhyme label="b" type="m">ront</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Maer zy Poulus nergens <rhyme label="b" type="m" corresp="#s5:l3">vont</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Met twee beweende <rhyme label="a" type="f">ogen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Keerde sy <rhyme label="a" type="f" corresp="#s6:l1">wederom</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">En sprak ik ben <rhyme label="b" type="m">bedrogen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Zo klaer gelijk de <rhyme label="b" type="m" corresp="#s6:l3">zon</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Komt voor mijn ogen <rhyme label="a" type="f">schynen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">De liefde kan <rhyme label="a" type="f" corresp="#s7:l1">verdwynen</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Daerom houd goede <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En ziet voor u wat gy <rhyme label="b" type="m" corresp="#s7:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Zy dogt so menig <rhyme label="a" type="f">reysje</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zou hy ook wesen <rhyme label="a" type="f" corresp="#s8:l1">Dood</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Met een quam daer een <rhyme label="b" type="m">meysje</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die trooste haer in haer <rhyme label="b" type="m" corresp="#s8:l3">nood</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Zey Bruydje wilt niet <rhyme label="a" type="f">schromen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">U Bruydegom is te <rhyme label="a" type="f" corresp="#s9:l1">bekomen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Hy is woonagtig <rhyme label="b" type="m">nou</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">In de Winkel van <rhyme label="b" type="m" corresp="#s9:l3">Abkou</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Daer was geen tyd van <rhyme label="a" type="f">weene</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Maer lustig op de <rhyme label="a" type="f" corresp="#s10:l1">reys</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">De Schaetse aen de <rhyme label="b" type="m">beene</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Want daer was toen goed <rhyme label="b" type="m" corresp="#s10:l3">Ys</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Twee knaepjes zy uyt <rhyme label="a" type="f">sende</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Ook zy haer <rhyme label="a" type="f" corresp="#s11:l1">zekonde</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Wy hebben wel <rhyme label="b" type="m">opgepast</rhyme>;</l>
        <l id="s11:l4" met="4" type="-+">Als zy hem zagen te houden <rhyme label="b" type="m" corresp="#s11:l3">vast</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Toen zy daer ginter <rhyme label="a" type="f">quame</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">‘t Was op de regte <rhyme label="a" type="f" corresp="#s12:l1">tyd</rhyme>:</l>
        <l id="s12:l3" met="3" type="-+">Dat Pou moest komen <rhyme label="b" type="m">eete</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">So was het <rhyme label="b" type="m" corresp="#s12:l3">overlyt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Den Bruyd die was <rhyme label="a" type="f">bezweke</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Kon van droefheyt niet <rhyme label="a" type="f" corresp="#s13:l1">spreke</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">‘t Was op St. Poulus <rhyme label="b" type="m">dag</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Toen men hem Bekeeren <rhyme label="b" type="m" corresp="#s13:l3">sag</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">De Meester sprak met <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Wat heb ik voor een <rhyme label="a" type="f" corresp="#s14:l1">knegt</rhyme>?</l>
        <l id="s14:l3" met="3" type="-+">Hoe kan gy ‘t so <rhyme label="b" type="m">beginnen</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Iou zaken staen so <rhyme label="b" type="m" corresp="#s14:l3">slegt</rhyme>?</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Gy moet dees Maegde <rhyme label="a" type="f">trouwe</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">En maekt haer tot u <rhyme label="a" type="f" corresp="#s15:l1">Vrouwe</rhyme>;</l>
        <l id="s15:l3" met="3" type="-+">Ik heb geen Werk voor <rhyme label="b" type="m">jou</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Gaet en maek haer tot u <rhyme label="b" type="m" corresp="#s15:l3">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Hy zey daer niet veel <rhyme label="a" type="f">tegen</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Al wat zijn Meester <rhyme label="a" type="f" corresp="#s16:l1">sprak</rhyme>:</l>
        <l id="s16:l3" met="3" type="-+">Maer is met Pak en <rhyme label="b" type="m">Zak</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Met zijn Lief weg <rhyme label="b" type="m" corresp="#s16:l3">gereden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Na Vleute toe <rhyme label="a" type="f">getreden</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">‘t Was op St. Poulus <rhyme label="a" type="f" corresp="#s17:l1">dag</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Doen men hem Bekeeren <rhyme label="b" type="m">sag</rhyme>:</l>
        <l id="s17:l4" met="4" type="-+">Is hy met haer <rhyme label="b" type="m" corresp="#s17:l3">gereden</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Maer toen zy te Vleute <rhyme label="a" type="f">quame</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Zy vaerde na de <rhyme label="a" type="f" corresp="#s18:l1">schout</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Twee Schepens zy mee <rhyme label="b" type="m">name</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">En so terstont <rhyme label="b" type="m" corresp="#s18:l3">Getrout</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">En daer wiert ook <rhyme label="a" type="f">geklonken</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">En ook nog eens <rhyme label="a" type="f" corresp="#s19:l1">gedronken</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Men hiet hun <rhyme label="b" type="m">wellekom</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Den verloren <rhyme label="b" type="m" corresp="#s19:l3">Bruidegom</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Poulus gy moet <rhyme label="a" type="f">weten</rhyme>,</l>
        <l id="s20:l2" met="3" type="-+">Als dat gy bent de <rhyme label="a" type="f" corresp="#s20:l1">Man</rhyme>:</l>
        <l id="s20:l3" met="3" type="-+">Poulus moet gy <rhyme label="b" type="m">heten</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Het is u Naem en <rhyme label="b" type="m" corresp="#s20:l3">van</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Poulus moet gy <rhyme label="a" type="f">blyven</rhyme>,</l>
        <l id="s21:l2" met="3" type="-+">En Poulus zull’ wy <rhyme label="a" type="f" corresp="#s21:l1">schryven</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">Het is u Naem en <rhyme label="b" type="m">van</rhyme>,</l>
        <l id="s21:l4" met="4" type="-+">Daerom trekt het uw niet <rhyme label="b" type="m" corresp="#s21:l3">an</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="3" type="-+">Die het Lied eerst heeft <rhyme label="a" type="f">gesongen</rhyme>,</l>
        <l id="s22:l2" met="3" type="-+">Van Pou en <rhyme label="a" type="f" corresp="#s22:l1">Rosemont</rhyme>:</l>
        <l id="s22:l3" met="3" type="-+">Het was nog maer een <rhyme label="b" type="m">Ionge</rhyme>,</l>
        <l id="s22:l4" met="4" type="-+">Hy deed so goed hy ‘t <rhyme label="b" type="m" corresp="#s22:l3">kont</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="3" type="-+">Maer heeft hy wat mis <rhyme label="a" type="f">geschreven</rhyme>,</l>
        <l id="s23:l2" met="3" type="-+">Zo wilt het hem <rhyme label="a" type="f" corresp="#s23:l1">vergeven</rhyme>:</l>
        <l id="s23:l3" met="3" type="-+">Zoekt dan een Vrygeestig <rhyme label="b" type="m">man</rhyme>,</l>
        <l id="s23:l4" met="4" type="-+">Die het beter maken <rhyme label="b" type="m" corresp="#s23:l3">kan</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
