  <author>Gaudentius van Loemel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ierusalem <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Daer het <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Van Godt nimmer en <rhyme label="b" type="m">verdwynt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Maer daer ‘t Lam met sijne <rhyme label="c" type="f">straelen</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Sonder <rhyme label="c" type="f" corresp="#s1:l4">falen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Boven Son, en Mane <rhyme label="b" type="m" corresp="#s1:l3">schynt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ghy gebouwde gansch <rhyme label="a" type="f">kostelijcke</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Machtigh <rhyme label="a" type="f" corresp="#s2:l1">rijcke</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Van seer menigh schoon <rhyme label="b" type="m">ghesteent</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Witte Peerels zijn u <rhyme label="c" type="f">Poorten</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Naer <rhyme label="c" type="f" corresp="#s2:l4">behoorten</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">In u nimmer wordt <rhyme label="b" type="m" corresp="#s2:l3">geweent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Van sijn goudt zijn u <rhyme label="a" type="f">straeten</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Boven <rhyme label="a" type="f" corresp="#s3:l1">maten</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Doorschynende als <rhyme label="b" type="m">gelas</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">In u geen Tempels <rhyme label="c" type="f">gebouwe</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Is <rhyme label="c" type="f" corresp="#s3:l4">t’aenschouwe</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Want Godt uwen Tempel <rhyme label="b" type="m" corresp="#s3:l3">was</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Heyligh! Heyligh zijt ghy <rhyme label="a" type="f">stede</rhyme>!</l>
        <l id="s4:l2" met="2" type="+-">Vol van <rhyme label="a" type="f" corresp="#s4:l1">vrede</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die noch Son, noch Maen <rhyme label="b" type="m">behoeft</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Want de alderschoonste <rhyme label="c" type="f">klaerheyt</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Van de <rhyme label="c" type="f" corresp="#s4:l4">waerheyt</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">Yder daer ten vollen <rhyme label="b" type="m" corresp="#s4:l3">proeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Genen nacht kan u <rhyme label="a" type="f">beswaeren</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Off <rhyme label="a" type="f" corresp="#s5:l1">vervaeren</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Want in u is ‘t eeuwigh <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat nimmer door al sijn <rhyme label="c" type="f">schynen</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Kan <rhyme label="c" type="f" corresp="#s5:l4">verdwynen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Vyt der Heyligen <rhyme label="b" type="m" corresp="#s5:l3">gesicht</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Luystert toe, en wilt eens <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Hoe die <rhyme label="a" type="f" corresp="#s6:l1">Chooren</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Van de Engelsch <rhyme label="b" type="m">altemael</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Haer met groote <rhyme label="c" type="f">melodijen</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Al <rhyme label="c" type="f" corresp="#s6:l4">verblijen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">In des Hemelsch schoonste <rhyme label="b" type="m" corresp="#s6:l3">sael</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Mensch den grootsten loon <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Is het <rhyme label="a" type="f" corresp="#s7:l1">leven</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Van des hemelsch soete <rhyme label="b" type="m">vreught</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Daer wy alle gerne <rhyme label="c" type="f">waeren</rhyme></l>
        <l id="s7:l5" met="2" type="+-">By de <rhyme label="c" type="f" corresp="#s7:l4">Schaeren</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Die daer zijn om hare <rhyme label="b" type="m" corresp="#s7:l3">deught</rhyme>.</l>
      </lg>
    </lg>
  </text>
