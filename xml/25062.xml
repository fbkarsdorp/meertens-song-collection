  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ich stont in groser <rhyme label="a" type="f">varen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">doen ich anzach drye bijlde <rhyme label="b" type="m">fiin</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">die minnentlijche <rhyme label="a" type="f" corresp="#s1:l1">waren</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Daer van verbrande mich yr <rhyme label="b" type="m" corresp="#s1:l2">sciin</rhyme></l>
        <l id="s1:l5" met="4" type="-+">zam eyn vÜr us heyser <rhyme label="c" type="m">glam</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Idoch zach ich yr <rhyme label="b" type="m" corresp="#s1:l2">wenghelijn</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">wie wal mir das tsem hertzen <rhyme label="c" type="m" corresp="#s1:l5">quam</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">God die was gÜeten <rhyme label="a" type="f">rijche</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">doe he ghescief die reyne <rhyme label="b" type="m">wijf</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">zo tsaert zo <rhyme label="a" type="f" corresp="#s2:l1">minnentlijche</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">des wal gecyret ziin yr <rhyme label="b" type="m" corresp="#s2:l2">lijf</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Och, kunde ich ym ghedienen <rhyme label="c" type="m">bas</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">den eren riichen <rhyme label="b" type="m" corresp="#s2:l2">vrouwen</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">werliich, des dede ich ane <rhyme label="c" type="m" corresp="#s2:l5">has</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Eyn trysoer, wal <rhyme label="a" type="f">ghecyeret</rhyme></l>
        <l id="s3:l2" met="4" type="-+">zo reynlijch mit driin vrouwen (reyn) <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">dem zach ich staen <rhyme label="a" type="f" corresp="#s3:l1">ghewyret</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">daer van erhevet mir mijn <rhyme label="b" type="m" corresp="#s3:l2">moyt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">das ich vergas miin zende (moyt) <rhyme label="c" type="m">leyt</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Zy dreghet eyn fyoel <rhyme label="b" type="m" corresp="#s3:l2">krense</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">der jo miin dienst zal zijn <rhyme label="c" type="m" corresp="#s3:l5">bereyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
