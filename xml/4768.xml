    <melody>Daar zijn veel edele mannen</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE meulens moeten <rhyme label="a" type="f">malen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Het geen men daer in <rhyme label="b" type="m">stort</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Maer och! mijn zinnen <rhyme label="a" type="f" corresp="#s1:l1">dwalen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En doen mijn ziel te <rhyme label="b" type="m" corresp="#s1:l2">kort</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Houd op dan malle <rhyme label="c" type="f">meulen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Vw’ spot met my te <rhyme label="c" type="f" corresp="#s1:l5">speulen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">V meel en is toch <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Als i’elheyd en <rhyme label="d" type="m" corresp="#s1:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">’t Is snoodheyd van <rhyme label="a" type="f">bekoring</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die my de rust <rhyme label="b" type="m">verslijt</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">’t Is krankheyd van <rhyme label="a" type="f" corresp="#s2:l1">verstoring</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">’t Is ingebeelde <rhyme label="b" type="m" corresp="#s2:l2">spijt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Houd op dan malle <rhyme label="c" type="f">meulen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Vw’ spot met my te <rhyme label="c" type="f" corresp="#s2:l5">speulen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">V meel en is toch <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Als i’elheyd en <rhyme label="d" type="m" corresp="#s2:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">’t Sijn scrup’len van <rhyme label="a" type="f">conscienty</rhyme></l>
        <l id="s3:l2" met="3" type="-+">(Voorwaer een groot <rhyme label="b" type="m">gequijn</rhyme>!)</l>
        <l id="s3:l3" met="3" type="-+">’t Is boet en <rhyme label="a" type="f" corresp="#s3:l1">penitency</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die my verboden <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Houd op dan malle <rhyme label="c" type="f">meulen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Vw’ spot met my te <rhyme label="c" type="f" corresp="#s3:l5">speulen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">V meel en is toch <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Als i’elheyd en <rhyme label="d" type="m" corresp="#s3:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">’t Sijn vliegen, muggen, <rhyme label="a" type="f">motten</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">’t Sijn kled’ren lind’ of  <rhyme label="b" type="m">wol</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">’t Sijn vaten, kroezen, <rhyme label="a" type="f" corresp="#s4:l1">potten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die ’t hoof my blazen <rhyme label="b" type="m" corresp="#s4:l2">vol</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Houd op dan malle <rhyme label="c" type="f">meulen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Vw’ spot met my te <rhyme label="c" type="f" corresp="#s4:l5">speulen</rhyme></l>
        <l id="s4:l7" met="3" type="-+">V meel en is toch <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Als i’elheyd en <rhyme label="d" type="m" corresp="#s4:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">’t Sijn nodeloze <rhyme label="a" type="f">zorgen</rhyme>:</l>
        <l id="s5:l2" met="3" type="-+">’t Is anderluy <rhyme label="b" type="m">bedrijf</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daerom ik vanden <rhyme label="a" type="f" corresp="#s5:l1">morgen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Tot op den avond <rhyme label="b" type="m" corresp="#s5:l2">kijf</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Houd op dan malle <rhyme label="c" type="f">meulen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Vw’ spot met my te <rhyme label="c" type="f" corresp="#s5:l5">speulen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">V meel en is toch <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Als i’elheyd en <rhyme label="d" type="m" corresp="#s5:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">’t Is wind van <rhyme label="a" type="f">murmuraty</rhyme>:</l>
        <l id="s6:l2" met="3" type="-+">Ay my! de deze <rhyme label="b" type="m">staet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Veel dieper inde <rhyme label="a" type="f" corresp="#s6:l1">graty</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Als ik, van zijn <rhyme label="b" type="m" corresp="#s6:l2">Prelaet</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Houd op dan malle <rhyme label="c" type="f">meulen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Vw’ spot met my te <rhyme label="c" type="f" corresp="#s6:l5">speulen</rhyme></l>
        <l id="s6:l7" met="3" type="-+">V meel en is toch <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Als i’elheyd en <rhyme label="d" type="m" corresp="#s6:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Och! wat al goe <rhyme label="a" type="f">gedachten</rhyme>?</l>
        <l id="s7:l2" met="3" type="-+">Wat rijkdom van <rhyme label="b" type="m">ghewin</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Doet in mijn ziel <rhyme label="a" type="f" corresp="#s7:l1">versmachten</rhyme></l>
        <l id="s7:l4" met="3" type="-+">De zucht van eigen <rhyme label="b" type="m" corresp="#s7:l2">zin</rhyme>?</l>
        <l id="s7:l5" met="3" type="-+">Houd op dan malle <rhyme label="c" type="f">meulen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Vw’ spot met my te <rhyme label="c" type="f" corresp="#s7:l5">speulen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">V meel en is toch <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Als i’elheyd en <rhyme label="d" type="m" corresp="#s7:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Bedaerd u dan, mijn <rhyme label="a" type="f">zinnen</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">En tracht te malen <rhyme label="b" type="m">deugd</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Daer deur ghy eens moogt <rhyme label="a" type="f" corresp="#s8:l1">winnen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">De Hemelrijkse <rhyme label="b" type="m" corresp="#s8:l2">vreugd</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Houd op dan malle <rhyme label="c" type="f">meulen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Vw’ spot met my te <rhyme label="c" type="f" corresp="#s8:l5">speulen</rhyme></l>
        <l id="s8:l7" met="3" type="-+">V meel en is toch <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Als i’elheyd en <rhyme label="d" type="m" corresp="#s8:l7">verdriet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wie kan ’t de meule <rhyme label="a" type="f">wijten</rhyme>?</l>
        <l id="s9:l2" met="3" type="-+">De Meulenaer is <rhyme label="b" type="m">dwaes</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Of laet dan dus te <rhyme label="a" type="f" corresp="#s9:l1">krijten</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Of komt my te <rhyme label="b" type="m" corresp="#s9:l2">Iutfaes</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Beschuldigen met <rhyme label="c" type="f">rede</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">Want dat is d’eige <rhyme label="c" type="f" corresp="#s9:l5">stede</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Daert malle meulen <rhyme label="d" type="m">recht</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Bepleyt te werden <rhyme label="d" type="m" corresp="#s9:l7">plegt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
