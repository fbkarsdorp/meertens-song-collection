  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ARrem leven der <rhyme label="a" type="f">Papisten</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Die geloof en hoop <rhyme label="a" type="f" corresp="#s1:l1">verquisten</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Door een al te engen <rhyme label="b" type="m">baen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Twijfelachtig en vol <rhyme label="c" type="f">zorgen</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Tot den alderlesten <rhyme label="c" type="f" corresp="#s1:l4">morgen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">VVaer haer zielen zullen <rhyme label="b" type="m" corresp="#s1:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Twijfelachtig mag niet <rhyme label="a" type="f">wezen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Maer wel hopen, en wel <rhyme label="a" type="f" corresp="#s2:l1">vrezen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Een gelovig Christen <rhyme label="b" type="m">mensch</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Want met zorgen en met <rhyme label="c" type="f">beven</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Hier ons Chrisdom te <rhyme label="c" type="f" corresp="#s2:l4">beleven</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Was d’Apostels lieve <rhyme label="b" type="m" corresp="#s2:l3">wensch</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dus zoo werd ook Iob <rhyme label="a" type="f">bevonden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In zijn werken, voor de <rhyme label="a" type="f" corresp="#s3:l1">zonden</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Vrezende als voor een <rhyme label="b" type="m">zee</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Wel bewust dat God niet <rhyme label="c" type="f">sparen</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Zou de boos heyd der <rhyme label="c" type="f" corresp="#s3:l4">zondaren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Die hen overtreden <rhyme label="b" type="m" corresp="#s3:l3">dee</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Salomon van alle <rhyme label="a" type="f">wijzen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">D’eerste, plag de man te <rhyme label="a" type="f" corresp="#s4:l1">prijzen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Die bevreest was t’alder <rhyme label="b" type="m">stond</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Zoo dat daerom met goe <rhyme label="c" type="f">werken</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Petrus onzen roup te <rhyme label="c" type="f" corresp="#s4:l4">sterken</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Boven al geraden <rhyme label="b" type="m" corresp="#s4:l3">vond</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">’t Is de vrede van <rhyme label="a" type="f">conscienty</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Lydsaemheyd, en <rhyme label="a" type="f" corresp="#s5:l1">patienty</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Maer de liefde Goods voor <rhyme label="b" type="m">al</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Die ons vast’lijk doed <rhyme label="c" type="f">vertrouwen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Dat hy onze ziel <rhyme label="c" type="f" corresp="#s5:l4">behouwen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En ten Hemel voeren <rhyme label="b" type="m" corresp="#s5:l3">zal</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Maer dit zekerlijk te <rhyme label="a" type="f">weten</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Door ’t geloof, is groot <rhyme label="a" type="f" corresp="#s6:l1">vermeten</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Zonderling nae dien men <rhyme label="b" type="m">ziet</rhyme></l>
        <l id="s6:l4" met="4" type="+-">’t Meerendeel dien dus <rhyme label="c" type="f">geloven</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Wouk’ren, stelen, buiten, <rhyme label="c" type="f" corresp="#s6:l4">roven</rhyme>;</l>
        <l id="s6:l6" met="4" type="+-">En de deugd beleven <rhyme label="b" type="m" corresp="#s6:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Als den boom dan van de <rhyme label="a" type="f">vruchten</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Word bekend, zoo staet te <rhyme label="a" type="f" corresp="#s7:l1">duchten</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Iae te houden voor <rhyme label="b" type="m">gewis</rhyme>;</l>
        <l id="s7:l4" met="4" type="+-">Dat alzulken <rhyme label="c" type="f">privilegy</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Geen geloof, maer <rhyme label="c" type="f" corresp="#s7:l4">sacrilegy</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">En niet dan verwaentheyd <rhyme label="b" type="m" corresp="#s7:l3">is</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Eerdt en vierd dan Goods <rhyme label="a" type="f">secreten</rhyme>:</l>
        <l id="s8:l2" met="4" type="+-">Want den mensch en kan niet <rhyme label="a" type="f" corresp="#s8:l1">weten</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Of hy liefde, of hy <rhyme label="b" type="m">haet</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Of hy gunst, of straf is <rhyme label="c" type="f">waerdig</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Weest daerom by tijds <rhyme label="c" type="f" corresp="#s8:l4">boetvaerdig</rhyme>:</l>
        <l id="s8:l6" met="4" type="+-">Want hier naemaels ist te <rhyme label="b" type="m" corresp="#s8:l3">laet</rhyme>.</l>
      </lg>
    </lg>
  </text>
