  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Tsy om u eedel <rhyme label="a" type="f">greine</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat Ick voersmacht van <rhyme label="a" type="f" corresp="#s1:l1">pyne</rhyme></l>
        <l id="s1:l3" met="3" type="-+">nacht ende dach soe <rhyme label="b" type="m">swaer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">sucht en kerme <rhyme label="a" type="f" corresp="#s1:l1">alleine</rhyme></l>
        <l id="s1:l5" met="3" type="-+">om dat Ick by u <rhyme label="a" type="f" corresp="#s1:l1">greine</rhyme></l>
        <l id="s1:l6" met="3" type="-+">altyt niet weesen <rhyme label="b" type="m" corresp="#s1:l3">mach</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Oerlof en <rhyme label="a" type="f">reefuerensy</rhyme></l>
        <l id="s2:l2" met="3" type="-+">altyt In u <rhyme label="a" type="f" corresp="#s2:l1">preesensy</rhyme></l>
        <l id="s2:l3" met="3" type="-+">sal Ick u toe draegen <rhyme label="b" type="m">vroet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">gy hebt de <rhyme label="a" type="f" corresp="#s2:l1">preeuerensy</rhyme></l>
        <l id="s2:l5" met="3" type="-+">te geeuen Die <rhyme label="a" type="f" corresp="#s2:l1">sententy</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Deuer myn tsersen <rhyme label="b" type="m" corresp="#s2:l3">bloet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Tis om u duscht <rhyme label="a" type="f">eerbaere</rhyme></l>
        <l id="s3:l2" met="3" type="-+">dat myn voersucht Is <rhyme label="a" type="f" corresp="#s3:l1">klaere</rhyme></l>
        <l id="s3:l3" met="3" type="-+">en Ick hoep talder <rhyme label="b" type="m">tyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">dat Ick met u <rhyme label="a" type="f" corresp="#s3:l1">eenpaere</rhyme></l>
        <l id="s3:l5" met="3" type="-+">maetresse lief <rhyme label="a" type="f" corresp="#s3:l1">eerbaere</rhyme></l>
        <l id="s3:l6" met="3" type="-+">sal leeuen met <rhyme label="b" type="m" corresp="#s3:l3">Ioelyt</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt myn genaedich <rhyme label="a" type="f">weesen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">myn liefste lief <rhyme label="a" type="f" corresp="#s4:l1">gepreesen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">want Ick u getrou sal <rhyme label="b" type="m">syn</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Troest myn wilt my <rhyme label="a" type="f" corresp="#s4:l1">geneesen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">rein blomken <rhyme label="a" type="f" corresp="#s4:l1">uitgeleesen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">verhuecht het herte <rhyme label="b" type="m" corresp="#s4:l3">myn</rhyme>.</l>
      </lg>
    </lg>
