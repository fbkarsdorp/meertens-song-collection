    <melody>Ma mère ik zeg</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Gy boose Sondaers moogt wel <rhyme label="a" type="f">beven</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die voortaen soekt hier in dit <rhyme label="a" type="f" corresp="#s1:l1">Leven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Des Werelts lusten en <rhyme label="b" type="m">playsier</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Waer door gy eeuwig gaet <rhyme label="c" type="f">verlooren</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En eens die droeve stem sult <rhyme label="c" type="f" corresp="#s1:l4">hooren</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Gaet weg van my in 't Helsche <rhyme label="b" type="m" corresp="#s1:l3">vier</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Seer schielijk wert hy <rhyme label="a" type="f">weg-genomen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Want siet de Duyvels sullen <rhyme label="a" type="f" corresp="#s2:l1">komen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En slepen u gelijk een <rhyme label="b" type="m">hont</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Naer 't vuur, alwaer veel duysent <rhyme label="c" type="f">pijnen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die nimmermeer sullen <rhyme label="c" type="f" corresp="#s2:l4">verdwijnen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Staeg wert gevonden t' aller <rhyme label="b" type="m" corresp="#s2:l3">stont</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wiens hert bevangt geen schrik of <rhyme label="a" type="f">vreesen</rhyme>;</l>
        <l id="s3:l2" met="4" type="-+">Want daer sal 't eeuwig duyster <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En nimmermeer een <rhyme label="b" type="m">schemer-ligt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Gy sult wel knerssen op u <rhyme label="c" type="f">tanden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat gy u voeten ende <rhyme label="c" type="f" corresp="#s3:l4">handen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Hier staeg tot onregt hebt <rhyme label="b" type="m" corresp="#s3:l3">gerigt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer niet en sal 't u konnen <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Godts tooren sal u nooyt <rhyme label="a" type="f" corresp="#s4:l1">verlaten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De Duyvels sullen met <rhyme label="b" type="m">vermaak</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">U schier verstikken door het <rhyme label="c" type="f">rooken</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En 't Vuur al meer en meer <rhyme label="c" type="f" corresp="#s4:l4">op-stoken</rhyme>.</l>
        <l id="s4:l6" met="4" type="-+">Dit alles is haer lust en <rhyme label="b" type="m" corresp="#s4:l3">smaak</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Godts goetheyt moet gy staeg <rhyme label="a" type="f">ontbeeren</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En 't vuur en sal u nooyt <rhyme label="a" type="f" corresp="#s5:l1">verteeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Waer in gy eeuwig branden <rhyme label="b" type="m">moet</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">Gy sult ook nimmer zijn met <rhyme label="c" type="f">vreden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Ja niet een Lidt van al u <rhyme label="c" type="f" corresp="#s5:l4">Leden</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Vermindert wert door dese <rhyme label="b" type="m" corresp="#s5:l3">gloet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hoereerders staakt u vuyle <rhyme label="a" type="f">lusten</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En soekt voortaen niet meer te <rhyme label="a" type="f" corresp="#s6:l1">rusten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">In d'een of d'ander Hoer haer <rhyme label="b" type="m">schoot</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Wilt desen Regel voor u <rhyme label="c" type="f">stellen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Haer wegen leyden u ter <rhyme label="c" type="f" corresp="#s6:l4">Hellen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En in een eyndeloose <rhyme label="b" type="m" corresp="#s6:l3">Doodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Gy Dronkaerts laet u dit niet <rhyme label="a" type="f">belgen</rhyme>;</l>
        <l id="s7:l2" met="4" type="-+">Die Bier en Wijn weer in te <rhyme label="a" type="f" corresp="#s7:l1">zwelgen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Tot dat gy stom legt op de <rhyme label="b" type="m">straet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Wilt gy het 's werelts vreugt <rhyme label="c" type="f">verklefen</rhyme>?</l>
        <l id="s7:l5" met="4" type="-+">Gy sult den Hemel haest <rhyme label="c" type="f" corresp="#s7:l4">verliesen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">De Hel voor u al open <rhyme label="b" type="m" corresp="#s7:l3">staet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gy Rijke, die dikmaels den <rhyme label="a" type="f">Armen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Laet voor u deur soo droevig <rhyme label="a" type="f" corresp="#s8:l1">karmen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En dat slegts maer om een stuk <rhyme label="b" type="m">Broot</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Gy jaegt hem als een hont na <rhyme label="c" type="f">buyten</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Godt sal u uyt den Hemel <rhyme label="c" type="f" corresp="#s8:l4">sluyten</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">In d' allerschrikkelijkste <rhyme label="b" type="m" corresp="#s8:l3">noodt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wel vrienden wilt u naerstig <rhyme label="a" type="f">weeren</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Om van die wegen af te <rhyme label="a" type="f" corresp="#s9:l1">keeren</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Op dat gy namaels seer <rhyme label="b" type="m">verblijdt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">U Schepper eeuwig meugt <rhyme label="c" type="f">loven</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En soo de Duyvelen <rhyme label="c" type="f" corresp="#s9:l4">berooven</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Haer Heerschappy tot aller <rhyme label="b" type="m" corresp="#s9:l3">tijdt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wy bidden u, ô <rhyme label="a" type="f">Opper-Koning</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Logeert ons in u Hemels <rhyme label="a" type="f" corresp="#s10:l1">Wooning</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Alwaer het altijdt Dag sal <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Wilt ons door uwen Geest <rhyme label="c" type="f">geleyden</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Op dat, wanneer wy sullen <rhyme label="c" type="f" corresp="#s10:l4">scheyden</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Bevrijt zijn van de Helsche <rhyme label="b" type="m" corresp="#s10:l3">Pijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
