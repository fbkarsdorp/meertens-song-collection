    <melody>Fuyons la clarté du soleil</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OP, op myn ziel, dancktuwen <rhyme label="a" type="m">God</rhyme>;</l>
        <l id="s1:l2" met="3" type="-+">Die ons als nu <rhyme label="b" type="m">bevrijt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van schand'en <rhyme label="a" type="m" corresp="#s1:l1">schamperspot</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">De loose bouven tot een <rhyme label="b" type="m" corresp="#s1:l2">spijt</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Ghy mijn hert, vry van <rhyme label="c" type="m">smert</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Looft hem t'aller <rhyme label="b" type="m" corresp="#s1:l2">tijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick was verwesen van den <rhyme label="a" type="m">Raet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En daer was steen <rhyme label="b" type="m">geleyt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Met hoopen op de <rhyme label="a" type="m" corresp="#s2:l1">straet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die my tot straffe wert <rhyme label="b" type="m" corresp="#s2:l2">bereyt</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Maer den nijt t'syner <rhyme label="c" type="m">spijt</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Is syn eysch <rhyme label="b" type="m" corresp="#s2:l2">ontseyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godleyt den mensch als aen het <rhyme label="a" type="m">graf</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En geeft hem aen de <rhyme label="b" type="m">doot</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Maer lae t van plagen <rhyme label="a" type="m" corresp="#s3:l1">af</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En treckt hem weder uyt den <rhyme label="b" type="m" corresp="#s3:l2">noot</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Hooghste God, ô myn <rhyme label="c" type="m">lot</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">V genaed'is <rhyme label="b" type="m" corresp="#s3:l2">groot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Het liegen is een vuyle <rhyme label="a" type="m">daet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die naer een korten <rhyme label="b" type="m">stont</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Haer eygen heer <rhyme label="a" type="m" corresp="#s4:l1">verraet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En even met een open <rhyme label="b" type="m" corresp="#s4:l2">mont</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Tegen danck als uyt <rhyme label="c" type="m">dwanck</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Melt syn loosen <rhyme label="b" type="m" corresp="#s4:l2">vont</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hierom soo wil ick t'aller <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Op God myn oogen <rhyme label="b" type="m">slaen</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Al word'ick schoon <rhyme label="a" type="m" corresp="#s5:l1">benijt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Het sal my noch eens beter <rhyme label="b" type="m" corresp="#s5:l2">gaen</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Wie den Heer hout in <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Sal voor eeuwigh <rhyme label="b" type="m" corresp="#s5:l2">staen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
