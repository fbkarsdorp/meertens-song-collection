    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Coridon die hiel de <rhyme label="a" type="m">wacht</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Inden schoonen <rhyme label="a" type="m" corresp="#s1:l1">nacht</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die de Sonn' in Bethlehem <rhyme label="a" type="m" corresp="#s1:l1">bracht</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Hy liep, hy riep, daer Thirsis <rhyme label="b" type="m">sliep</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Comt-uyt, en siet; Siet wat de <rhyme label="b" type="m" corresp="#s1:l4">locht</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Wat den Hemel ons <rhyme label="c" type="m">bediet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Siet den Enghel op de <rhyme label="a" type="m">voet</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Quam hun in't <rhyme label="a" type="m" corresp="#s2:l1">ghemoet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Ende wenscht hun alle <rhyme label="a" type="m" corresp="#s2:l1">goet</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Weest nu verblijdt, al die hier <rhyme label="b" type="m">zijt</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Hoort naer mijn stem: <rhyme label="b" type="m" corresp="#s2:l4">com-aen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Laet ons gaen nae <rhyme label="c" type="m">Bethlehem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Siet, daer vonden sy het <rhyme label="a" type="m">kint</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Dat de Moeder <rhyme label="a" type="m" corresp="#s3:l1">wint</rhyme></l>
        <l id="s3:l3" met="4" type="+-">In een slechte <rhyme label="a" type="m" corresp="#s3:l1">winde-lint</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Soo goet, soo soet: noyt schoonder <rhyme label="b" type="m">bloet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Aensach den dach, als doen dit <rhyme label="b" type="m" corresp="#s3:l4">kint</rhyme></l>
        <l id="s3:l6" met="4" type="+-">In sijne Moerders ermen <rhyme label="c" type="m">lagh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Met sijn handekens <rhyme label="a" type="m">terstont</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Trock by 't hayrken <rhyme label="a" type="m" corresp="#s4:l1">blont</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">'s Moeders aensicht aen sijn <rhyme label="a" type="m" corresp="#s4:l1">mont</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Sy kust; hy blust haer soeten <rhyme label="b" type="m">lust</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Als rooskens root, bloeyen (al <rhyme label="b" type="m" corresp="#s4:l4">is</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Winter) in des Maghets <rhyme label="c" type="m">schoot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">De Moeder-maghet <rhyme label="a" type="m">ghetuyght</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Als s'haer borsten <rhyme label="a" type="m" corresp="#s5:l1">buyght</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Dat Godt self daer aen <rhyme label="a" type="m" corresp="#s5:l1">suyght</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Sy schinckt, hy drinckt, soo dat haer <rhyme label="b" type="m">dinckt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dat menichamel 't sneeuw-witte <rhyme label="b" type="m" corresp="#s5:l4">soch</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Swemt als in een schaell'van <rhyme label="c" type="m">corael</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als sy van de traenkens <rhyme label="a" type="m">telt</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Ghelijck peerels <rhyme label="a" type="m" corresp="#s6:l1">ghestelt</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Door des kouden vorsts <rhyme label="a" type="m" corresp="#s6:l1">ghewelt</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Hy beeft, sy gheeft, al wat-se <rhyme label="b" type="m">heeft</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Aen-dien schadt, want Godt en <rhyme label="b" type="m" corresp="#s6:l4">heeft</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Die saelijcke noyt <rhyme label="c" type="m">gehadt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Want die ooghen saeghen <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Op een wonder <rhyme label="a" type="m" corresp="#s7:l1">manier</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">Met de tranen stoocken <rhyme label="a" type="m" corresp="#s7:l1">vier</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Als hoy en stroy in <rhyme label="b" type="m">tranenson</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Al even sterck, Godt ende <rhyme label="b" type="m" corresp="#s7:l4">mensch</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Branden t'samen in dit <rhyme label="c" type="m">werck</rhyme>.</l>
      </lg>
    </lg>
  </text>
