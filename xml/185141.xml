  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Eenich, stil, en af <rhyme label="a" type="f">ghescheyden</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Hier van <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">s’Menschen herte wel <rhyme label="a" type="f" corresp="#s1:l1">bereyden</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Voor Godt <rhyme label="b" type="m" corresp="#s1:l2">sal</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Maer aenhanck // van <rhyme label="c" type="m">verganck</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In ‘t gene dat hier <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Maeckt <rhyme label="d" type="m" corresp="#s1:l6">duysternis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Een gelaten hert <rhyme label="a" type="f">ootmoedich</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Hout hem <rhyme label="b" type="m">stil</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En het voeght hem altijt <rhyme label="a" type="f" corresp="#s2:l1">spoedigh</rhyme>,</l>
        <l id="s2:l4" met="2" type="+-">Na Gods <rhyme label="b" type="m" corresp="#s2:l2">wil</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Hoe het gaet // goet of <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wat Godt toelaet, of <rhyme label="d" type="m">schickt</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Hem niet en <rhyme label="d" type="m" corresp="#s2:l6">schrickt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Want hem is voor al wel <rhyme label="a" type="f">condich</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Datter <rhyme label="b" type="m">geen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dingen en zijn quaet oft <rhyme label="a" type="f" corresp="#s3:l1">sondich</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Dan <rhyme label="b" type="m" corresp="#s3:l2">alleen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">’t Goddeloos // wesen <rhyme label="c" type="m">boos</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Waer van des menschen <rhyme label="d" type="m">gront</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Diep is <rhyme label="d" type="m" corresp="#s3:l6">ghewont</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Creatuerelick <rhyme label="a" type="f">beweghen</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Dus oft <rhyme label="b" type="m">so</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daer en is hem <rhyme label="a" type="f" corresp="#s4:l1">aengelegen</rhyme>,</l>
        <l id="s4:l4" met="2" type="+-">Niet een <rhyme label="b" type="m" corresp="#s4:l2">stroo</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Of ‘t ghedacht // schreyt of <rhyme label="c" type="m">lacht</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Van ‘t gene dat het <rhyme label="d" type="m">siet</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">‘t En raeckt hem <rhyme label="d" type="m" corresp="#s4:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Isser dan geen pijn noch <rhyme label="a" type="f">smerte</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Noch <rhyme label="b" type="m">ghevaer</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">In sulcken gelaten <rhyme label="a" type="f" corresp="#s5:l1">herte</rhyme>?</l>
        <l id="s5:l4" met="2" type="+-">Iae ‘t <rhyme label="b" type="m" corresp="#s5:l2">voorwaer</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Smerte groot // totter <rhyme label="c" type="m">doot</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">‘t Welck niemant en <rhyme label="d" type="m">versint</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Dan die ‘t <rhyme label="d" type="m" corresp="#s5:l6">bevint</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Mochtet hier hem selfs <rhyme label="a" type="f">verteeren</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Om den <rhyme label="b" type="m">mensch</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Tot de ware deucht te <rhyme label="a" type="f" corresp="#s6:l1">keren</rhyme>,</l>
        <l id="s6:l4" met="2" type="+-">Na Godts <rhyme label="b" type="m" corresp="#s6:l2">wensch</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Hem geen pijn // soudet <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Vyt liefde die het <rhyme label="d" type="m">heeft</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Tot al wat <rhyme label="d" type="m" corresp="#s6:l6">leeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dat is hem het grootste <rhyme label="a" type="f">lyden</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Alst niet <rhyme label="b" type="m">can</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Van de slavernye <rhyme label="a" type="f" corresp="#s7:l1">bevryden</rhyme></l>
        <l id="s7:l4" met="2" type="+-"><rhyme label="b" type="m" corresp="#s7:l2">Alle-man</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Dat het moet // ’t hooghste <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">By hem behouden <rhyme label="d" type="m">heel</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Sonder <rhyme label="d" type="m" corresp="#s7:l6">uytdeel</rhyme>.</l>
      </lg>
    </lg>
  </text>
