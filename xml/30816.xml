    <melody>Ik arm schaapje aan de heide</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ick arm schaep aen gheen <rhyme label="a" type="f">heijden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Waer sal ick henen <rhyme label="b" type="m">gaen</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Ick moet van vrinden en magen <rhyme label="a" type="f" corresp="#s1:l1">scheijden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Alleen op Christum <rhyme label="b" type="m" corresp="#s1:l2">staen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En mij op hem <rhyme label="c" type="f">verlaten</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Alder werelt <rhyme label="d" type="m">jolijt</rhyme></l>
        <l id="s1:l7" met="2" type="-+">in deser <rhyme label="d" type="m" corresp="#s1:l6">tijt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">En mach die siele niet <rhyme label="c" type="f" corresp="#s1:l5">baten</rhyme>.</l>
      </lg>
    </lg>
