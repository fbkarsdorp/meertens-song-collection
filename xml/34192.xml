  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O aenghenaem, en droevigh <rhyme label="a" type="m">Wout</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Waer ick Minalcas, heb myn gonst <rhyme label="a" type="m" corresp="#s1:l1">vertrout</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">O plaets als oorsaeck van myn <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Maer nu van <rhyme label="c" type="m">druck</rhyme>,</l>
        <l id="s1:l5" met="1" type="-+"><rhyme label="c" type="m" corresp="#s1:l4">'tGheluck</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Verlaet nu myne <rhyme label="b" type="m" corresp="#s1:l3">rust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ach! lest Minalcas weerden <rhyme label="a" type="m">vrint</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Was uwe gonst tot myne liefd' <rhyme label="a" type="m" corresp="#s2:l1">ghesint</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer nu helaes! met een valsch <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">U geyle <rhyme label="c" type="m">min</rhyme>,</l>
        <l id="s2:l5" met="1" type="-+">En <rhyme label="c" type="m" corresp="#s2:l4">sin</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Van my benomen <rhyme label="b" type="m" corresp="#s2:l3">werdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ey neen, neen Laura wat ghy <rhyme label="a" type="m">seght</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Denckt ghy op d'on-trouw van soo trouwen <rhyme label="a" type="m" corresp="#s3:l1">knecht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Neen, neen, hy heeft my hier <rhyme label="b" type="m">verbeydt</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Van soo de <rhyme label="c" type="m">Son</rhyme>,</l>
        <l id="s3:l5" met="1" type="-+"><rhyme label="c" type="m" corresp="#s3:l4">Begon</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En haere straelen <rhyme label="b" type="m" corresp="#s3:l3">spreydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Komt dan, ô vrindt, tot u <rhyme label="a" type="m">Vrindin</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Siet hoe myn hert ghestelt is door u <rhyme label="a" type="m" corresp="#s4:l1">min</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Zyt ghy verborghen onder <rhyme label="b" type="m">'tgroen</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Com gheeft u <rhyme label="c" type="m">bloot</rhyme>,</l>
        <l id="s4:l5" met="1" type="-+">'tIs <rhyme label="c" type="m" corresp="#s4:l4">noot</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat wy ons liefde <rhyme label="b" type="m" corresp="#s4:l3">voen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ach! wat ghedacht, vol druck, en <rhyme label="a" type="m">smert</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">Bevanght daer on-versins myn droevigh <rhyme label="a" type="m" corresp="#s5:l1">hert</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Het quaetst, men alder-best <rhyme label="b" type="m">ghelooft</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">'kVrees mensch, oft <rhyme label="c" type="m">dier</rhyme>,</l>
        <l id="s5:l5" met="1" type="-+">Hem <rhyme label="c" type="m" corresp="#s5:l4">hier</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Sal hebben wegh <rhyme label="b" type="m" corresp="#s5:l3">gherooft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O hemel gheeft my hier nu <rhyme label="a" type="m">raet</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Waer ick hem vinden sal, neen, 'tis te <rhyme label="a" type="m" corresp="#s6:l1">laet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ick ben als Tisbé nu <rhyme label="b" type="m">ghestelt</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Doen haeren <rhyme label="c" type="m">vrindt</rhyme>,</l>
        <l id="s6:l5" met="1" type="-+"><rhyme label="c" type="m" corresp="#s6:l4">Verslindt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Was, door het spoocks <rhyme label="b" type="m" corresp="#s6:l3">ghewelt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Sucht, sucht, ô hert, laet droef <rhyme label="a" type="m">ghesucht</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Maeckt Bosch, en Dal beweeght, ja self de <rhyme label="a" type="m" corresp="#s7:l1">lucht</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Vloeyt traenen langhs dit groene <rhyme label="b" type="m">Wout</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Wout daer myn <rhyme label="c" type="m">klacht</rhyme>,</l>
        <l id="s7:l5" met="1" type="-+">En <rhyme label="c" type="m" corresp="#s7:l4">kracht</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Door droefheydt t'saem <rhyme label="b" type="m" corresp="#s7:l3">verstout</rhyme>.</l>
      </lg>
    </lg>
  </text>
