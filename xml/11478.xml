  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt soet Nymphje <rhyme label="a" type="m">Galathee</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ick dryvend' vond haer <rhyme label="a" type="m" corresp="#s1:l1">vee</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Al aen het strand dicht by de <rhyme label="a" type="m" corresp="#s1:l1">zee</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Met grooter <rhyme label="b" type="m">vreught</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Ende <rhyme label="b" type="m" corresp="#s1:l4">geneught</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Singende <rhyme label="c" type="m">verblijt</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">'t Geen klonck door al de bergen <rhyme label="c" type="m" corresp="#s1:l6">wijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Haer kruyf-gekrolde <rhyme label="a" type="m">hayr</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Door-vlecht met bloemtjens <rhyme label="a" type="m" corresp="#s2:l1">waer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'t Geen haer aenschijn soet en <rhyme label="a" type="m" corresp="#s2:l1">klaer</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Vercierde <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Soo dat het <rhyme label="b" type="m" corresp="#s2:l4">veer</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Uyt-stack in <rhyme label="c" type="m">glans</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Verr' boven alle Maeghden <rhyme label="c" type="m" corresp="#s2:l6">t'hans</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Voor 't suyver witte <rhyme label="a" type="m">kleet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Geen sy mocht sijn <rhyme label="a" type="m" corresp="#s3:l1">besteet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Noch fluweel, ick seker <rhyme label="a" type="m" corresp="#s3:l1">weet</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">En sou niet <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Haer lichaem <rhyme label="b" type="m" corresp="#s3:l4">staen</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Als 't slecht <rhyme label="c" type="m">gewaet</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Daerse daeg'lijckx nu in <rhyme label="c" type="m" corresp="#s3:l6">gaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Haer voorhooft <rhyme label="a" type="m">mellick-wit</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Bruyn oogen als een <rhyme label="a" type="m" corresp="#s4:l1">git</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Gekleurde kaeckjens, voort elck <rhyme label="a" type="m" corresp="#s4:l1">lit</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">'t Geen lichaem <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Soo aerdich <rhyme label="b" type="m" corresp="#s4:l4">leeft</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Want Natuur haer <rhyme label="c" type="m">gunst</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Heeft in haer getoont sijn <rhyme label="c" type="m" corresp="#s4:l6">kunst</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Haer broosjens net <rhyme label="a" type="m">gestrickt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Aen haer voetjens wel <rhyme label="a" type="m" corresp="#s5:l1">geschickt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Maer sy voort in een <rhyme label="a" type="m" corresp="#s5:l1">oogenblick</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Sloech duyn-waert <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Dees schoone <rhyme label="b" type="m" corresp="#s5:l4">Godin</rhyme></l>
        <l id="s5:l6" met="2" type="-+">En liet mijn <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Gelijck ick wand'len quam <rhyme label="c" type="m" corresp="#s5:l6">gegaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
