  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SA komt mijn <rhyme label="a" type="f">kameraden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Sa laet ons t’samen <rhyme label="b" type="m">gaen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ons met genucht <rhyme label="a" type="f" corresp="#s1:l1">versaden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">’t Is hier genoech <rhyme label="b" type="m" corresp="#s1:l2">gestaen</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Laet ons <rhyme label="c" type="f">ruyse-muysen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En een porsen <rhyme label="c" type="f" corresp="#s1:l5">knuysen</rhyme>:</l>
        <l id="s1:l7" met="3" type="+-">Laet ons t’samen <rhyme label="d" type="f">maken</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Weynigh goede <rhyme label="e" type="m">chier</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">En laet ons eensjens <rhyme label="d" type="f" corresp="#s1:l7">smaken</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Een pintjen <rhyme label="e" type="m" corresp="#s1:l8">Lovens-bier</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Doet alle droefheydt <rhyme label="a" type="f">vlieden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En drinckt op uw’ <rhyme label="b" type="m">gemack</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">(Niemant kan ’t u <rhyme label="a" type="f" corresp="#s2:l1">verbieden</rhyme>)</l>
        <l id="s2:l4" met="3" type="-+">Roockt vry een pijp <rhyme label="b" type="m" corresp="#s2:l2">taback</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">Flux tapt bier <rhyme label="c" type="f">Weerdinne</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Meet tot aen de <rhyme label="c" type="f" corresp="#s2:l5">pinne</rhyme>:</l>
        <l id="s2:l7" met="3" type="+-">Laet ons t’samen <rhyme label="d" type="f">maken</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Weynigh goede <rhyme label="e" type="m">chier</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En laet ons eensjens <rhyme label="d" type="f" corresp="#s2:l7">smaken</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Een pintjen <rhyme label="e" type="m" corresp="#s2:l8">Lovens-bier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Komt hier mijn’ <rhyme label="a" type="f">med’-ghesellen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En voeght u aen den <rhyme label="b" type="m">disch</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Aenverdt de volle <rhyme label="a" type="f" corresp="#s3:l1">snellen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Verdrinckt den gragen <rhyme label="b" type="m" corresp="#s3:l2">Visch</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Wilt hem soo <rhyme label="c" type="f">verjaghen</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Wt ons’ swacke <rhyme label="c" type="f" corresp="#s3:l5">maghen</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">Laet ons t’samen <rhyme label="d" type="f">maken</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Weynigh goede <rhyme label="e" type="m">chier</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">En laet ons eensjens <rhyme label="d" type="f" corresp="#s3:l7">smaken</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Een pintjen <rhyme label="e" type="m" corresp="#s3:l8">Lovens-bier</rhyme>.</l>
      </lg>
    </lg>
