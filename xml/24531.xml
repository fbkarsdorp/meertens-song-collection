<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24531</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="devoot lied" translation="devotional song">devoot lied</tag>
      <tag standard-name="mystiek lied" translation="mystical song">mystiek lied</tag>
    </tags>
    <melody>Dat geschiedde op een nieuwjaarsnacht</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ic en wil die werlt achten <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">ende dienen god in <rhyme label="b" type="f">trouwen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">hi sal ons loenen nae deser <rhyme label="a" type="m" corresp="#s1:l1">tyt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">ende geuen ons grote <rhyme label="b" type="f" corresp="#s1:l2">vroude</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Laet ons niet trueren in geenre <rhyme label="a" type="m">noet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">wy willens gade <rhyme label="b" type="f">betrouwen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">hi heeft geleden den bitteren <rhyme label="a" type="m" corresp="#s2:l1">doet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">om hem wil ickes my <rhyme label="b" type="f" corresp="#s2:l2">holden</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och Maria bidt voer <rhyme label="a" type="m">ons</rhyme></l>
        <l id="s3:l2" met="3" type="-+">want gi syt al vol <rhyme label="b" type="f">trouwen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">dat ic nae deser corter <rhyme label="a" type="m" corresp="#s3:l1">tyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">gades aensichte moet <rhyme label="b" type="f" corresp="#s3:l2">aenschouwen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Och mochte ic noch den dach <rhyme label="a" type="m">geleuen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">ten eynde van desen <rhyme label="b" type="f">jaren</rhyme></l>
        <l id="s4:l3" met="4" type="-+">dat ic die gracie gades <rhyme label="a" type="m" corresp="#s4:l1">vercrege</rhyme></l>
        <l id="s4:l4" met="3" type="-+">soe en waer my geen dinck <rhyme label="b" type="f" corresp="#s4:l2">sware</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och hemelsche vrouwe gaet my niet <rhyme label="a" type="m">af</rhyme></l>
        <l id="s5:l2" met="3" type="-+">maria staet my in <rhyme label="b" type="f">staeden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">an v steet waerlic alle myn <rhyme label="a" type="m" corresp="#s5:l1">troest</rhyme></l>
        <l id="s5:l4" met="3" type="-+">ic rope aen v <rhyme label="b" type="f" corresp="#s5:l2">genaede</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Als ic mit gade verenighet <rhyme label="a" type="m">byn</rhyme></l>
        <l id="s6:l2" met="3" type="-+">soe gaedet nae mynen <rhyme label="b" type="f">begeren</rhyme></l>
        <l id="s6:l3" met="4" type="-+">my sal soe wal te moede <rhyme label="a" type="m" corresp="#s6:l1">syn</rhyme></l>
        <l id="s6:l4" met="3" type="-+">my en mach dan nyemant <rhyme label="b" type="f" corresp="#s6:l2">deren</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nv is myn hert soe seer <rhyme label="a" type="m">verblyt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">dat ic mit gade sal <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">ende syns gebrucken <rhyme label="a" type="m" corresp="#s7:l1">ewelic</rhyme></l>
        <l id="s7:l4" met="3" type="-+">al in syn ewige <rhyme label="b" type="f" corresp="#s7:l2">leuen</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
