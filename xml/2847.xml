  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="8" type="-+">Die gygelaer In dat koere <rhyme label="a" type="m">lach</rhyme></l>
        <l id="s1:l2" met="4" type="-+">die Hy schreyde vanden naeuont tot den <rhyme label="a" type="m" corresp="#s1:l1">dach</rhyme></l>
        <l id="s1:l3" met="8" type="-+">Waerom schreyt gy <rhyme label="b" type="m">gygelaer</rhyme></l>
        <l id="s1:l4" met="4" type="-+">waerom Ick woudt Ick In u huisie <rhyme label="b" type="m" corresp="#s1:l3">waer</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="8" type="-+">Waerom schreidt gy <rhyme label="a" type="m">gygelaer</rhyme></l>
        <l id="s2:l2" met="4" type="-+">waerom Ick woudt dat Ick In u kamer <rhyme label="a" type="m" corresp="#s2:l1">waer</rhyme></l>
        <l id="s2:l3" met="8" type="-+">Doen hy al in haer kaemer <rhyme label="b" type="m">was</rhyme></l>
        <l id="s2:l4" met="4" type="-+">doen Hy schreyde van den naeuont tot den <rhyme label="b" type="m" corresp="#s2:l3">dach</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="8" type="-+">Waerom schreit gy <rhyme label="a" type="m">gygelaer</rhyme></l>
        <l id="s3:l2" met="4" type="-+">waerom Ick woudt Ick op u beddetgen <rhyme label="a" type="m" corresp="#s3:l1">waer</rhyme></l>
        <l id="s3:l3" met="8" type="-+">Doen hy al op haer beddetgen <rhyme label="b" type="m">was</rhyme></l>
        <l id="s3:l4" met="4" type="-+">doen Hy lachten van den aeuont tot den <rhyme label="b" type="m" corresp="#s3:l3">dach</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="8" type="-+">Doen hy al op haer bedde <rhyme label="a" type="m">lach</rhyme></l>
        <l id="s4:l2" met="4" type="-+">doen Hy schreide van den aeuond tot den <rhyme label="a" type="m" corresp="#s4:l1">dach</rhyme></l>
        <l id="s4:l3" met="8" type="-+">Waerom schreit gy <rhyme label="b" type="m">gygelaer</rhyme></l>
        <l id="s4:l4" met="4" type="-+">waerom Ick woudt dat Ick In u armjes <rhyme label="b" type="m" corresp="#s4:l3">lach</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="8" type="-+">Doen hy al In haer arm <rhyme label="a" type="m">lach</rhyme></l>
        <l id="s5:l2" met="4" type="-+">doen Hy lachten van den anont tot den <rhyme label="a" type="m" corresp="#s5:l1">dach</rhyme></l>
        <l id="s5:l3" met="8" type="-+">Waerom lacht gy <rhyme label="b" type="m">gygelaer</rhyme></l>
        <l id="s5:l4" met="4" type="-+">waerom myn Duenckt Ick In den heemel <rhyme label="b" type="m" corresp="#s5:l3">vaer</rhyme>.</l>
