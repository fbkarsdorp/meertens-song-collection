  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Adieu mijn troost mijn liefste <rhyme label="a" type="f">reine</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van u te sceiden es mi <rhyme label="b" type="m">leit</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Mijn herte blijft met u <rhyme label="a" type="f" corresp="#s1:l1">ghemeine</rhyme></l>
        <l id="s1:l4" met="4" type="-+">So waer ic zi hoet mi <rhyme label="b" type="m" corresp="#s1:l2">vergheit</rhyme></l>
        <l id="s1:l5" met="4" type="-+">In ghere niet dan <rhyme label="b" type="m" corresp="#s1:l2">ghestadicheit</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Up minen heit mijn vruecht es <rhyme label="a" type="f" corresp="#s1:l1">cleine</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Als ic u niet bi mi en <rhyme label="b" type="m" corresp="#s1:l2">weit</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Du best mijn liefste ende liever <rhyme label="a" type="f" corresp="#s1:l1">gheine</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Adieu mijn troost mijn liefste <rhyme label="a" type="f">reine</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Van u te sceiden es mi <rhyme label="b" type="m">leit</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Mijn herte blijft met u <rhyme label="a" type="f" corresp="#s2:l1">ghemeine</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Nu biddic gode dat hi u <rhyme label="b" type="m" corresp="#s2:l2">seine</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Vor aerch vor al <rhyme label="b" type="m" corresp="#s2:l2">onreinicheit</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Soete lieve <rhyme label="a" type="f" corresp="#s2:l1">souvereine</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Ne sijt mi nummer <rhyme label="b" type="m" corresp="#s2:l2">onghereit</rhyme></l>
        <l id="s2:l8" met="4" type="-+">In ghere niet dan <rhyme label="a" type="f" corresp="#s2:l1">ghestadicheit</rhyme></l>
      </lg>
