  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ick mach wel droeuich <rhyme label="a" type="f">singen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">in desen ellendigen <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">want die gods woort <rhyme label="a" type="f" corresp="#s1:l1">volbringen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">die worden so seer <rhyme label="b" type="m" corresp="#s1:l2">benijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Al van des werelts <rhyme label="a" type="f">geleerden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">die geestich willen zijn <rhyme label="b" type="m">genaemt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">en heeren heeten opten <rhyme label="a" type="f" corresp="#s2:l1">aerden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">maer sy worde van het lam <rhyme label="b" type="m" corresp="#s2:l2">beschaemt</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al somen mach <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">in vrieslant van dit <rhyme label="b" type="m">geslacht</rhyme></l>
        <l id="s3:l3" met="3" type="-+">hoe dat gods kinderen vol <rhyme label="a" type="f" corresp="#s3:l1">trouwen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">worden gedoot by <rhyme label="b" type="m" corresp="#s3:l2">nacht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Alsmen schreef <rhyme label="a" type="f">vijftienhondert</rhyme></l>
        <l id="s4:l2" met="3" type="-+">ende daer toe tseuentich <rhyme label="b" type="m">iaer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">was menich mensche <rhyme label="a" type="f" corresp="#s4:l1">becommert</rhyme></l>
        <l id="s4:l4" met="3" type="-+">ouer Douwe Eeweszoon <rhyme label="b" type="m" corresp="#s4:l2">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als leeuwen ende woluen <rhyme label="a" type="f">wrede</rhyme></l>
        <l id="s5:l2" met="3" type="-+">quamen sy met groot <rhyme label="b" type="m">gewelt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">en vingen dit schaepke vol goede <rhyme label="a" type="f" corresp="#s5:l1">vrede</rhyme></l>
        <l id="s5:l4" met="3" type="-+">den derden Januarij <rhyme label="b" type="m" corresp="#s5:l2">ghetelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sy deden hem daer <rhyme label="a" type="f">leyden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">tot Leeuwarden op het <rhyme label="b" type="m">huys</rhyme></l>
        <l id="s6:l3" met="3" type="-+">van vijf cleyne kinderen most hy <rhyme label="a" type="f" corresp="#s6:l1">scheyden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">en latens alleenich int <rhyme label="b" type="m" corresp="#s6:l2">huys</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy worde daer henen <rhyme label="a" type="f">gestooten</rhyme></l>
        <l id="s7:l2" met="3" type="-+">by den quaetdoenders een <rhyme label="b" type="m">paer</rhyme></l>
        <l id="s7:l3" met="3" type="-+">daer lach hy lange tijt <rhyme label="a" type="f" corresp="#s7:l1">beslooten</rhyme></l>
        <l id="s7:l4" met="3" type="-+">in doncker putten <rhyme label="b" type="m" corresp="#s7:l2">onclaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hoe wel het lange moest <rhyme label="a" type="f">dueren</rhyme></l>
        <l id="s8:l2" met="3" type="-+">was hy verduldich int lijden <rhyme label="b" type="m">swaer</rhyme></l>
        <l id="s8:l3" met="3" type="-+">hem verlangde tot allen <rhyme label="a" type="f" corresp="#s8:l1">vren</rhyme></l>
        <l id="s8:l4" met="3" type="-+">na zijn offerhande <rhyme label="b" type="m" corresp="#s8:l2">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Den Bisschop hoge <rhyme label="a" type="f">verheuen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">met die zijne die connen <rhyme label="b" type="m">quaet</rhyme></l>
        <l id="s9:l3" met="3" type="-+">om dit schaepke te brengen in <rhyme label="a" type="f" corresp="#s9:l1">sneuen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">bedochte so menigen <rhyme label="b" type="m" corresp="#s9:l2">raet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Sy gingen hem <rhyme label="a" type="f">ondersoecken</rhyme></l>
        <l id="s10:l2" met="3" type="-+">na zijnen geloue <rhyme label="b" type="m">ient</rhyme></l>
        <l id="s10:l3" met="3" type="-+">hy woude niet verbergen in <rhyme label="a" type="f" corresp="#s10:l1">hoecken</rhyme></l>
        <l id="s10:l4" met="3" type="-+">maer hy heeftet vrimoedich <rhyme label="b" type="m" corresp="#s10:l2">bekent</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Sy pronckten voor hem zeer <rhyme label="a" type="f">schoone</rhyme></l>
        <l id="s11:l2" met="3" type="-+">des Paus <rhyme label="b" type="m">cremery</rhyme></l>
        <l id="s11:l3" met="3" type="-+">die mochte gelden niet een <rhyme label="a" type="f" corresp="#s11:l1">boone</rhyme></l>
        <l id="s11:l4" met="3" type="-+">tegens die waerheyt <rhyme label="b" type="m" corresp="#s11:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Gods geboden zijn seer <rhyme label="a" type="f">crachtich</rhyme></l>
        <l id="s12:l2" met="3" type="-+">die moeyen wy volgen <rhyme label="b" type="m">naer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">en niet meschen Wetten <rhyme label="a" type="f" corresp="#s12:l1">onwaerachtich</rhyme></l>
        <l id="s12:l4" met="3" type="-+">heeft hy beleden voor <rhyme label="b" type="m" corresp="#s12:l2">haer</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Hy heeft haer claerlijck <rhyme label="a" type="f">bewesen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">dat haer getijden en Missen <rhyme label="b" type="m">saen</rhyme></l>
        <l id="s13:l3" met="3" type="-+">haer formen smeren en <rhyme label="a" type="f" corresp="#s13:l1">belesen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">met Godts woort niet mach <rhyme label="b" type="m" corresp="#s13:l2">bestaen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">De Heere holp hem <rhyme label="a" type="f">strijden</rhyme></l>
        <l id="s14:l2" met="3" type="-+">gaf hem een vrijmoedige <rhyme label="b" type="m">geest</rhyme></l>
        <l id="s14:l3" met="3" type="-+">dat hy tot geender <rhyme label="a" type="f" corresp="#s14:l1">tijden</rhyme></l>
        <l id="s14:l4" met="3" type="-+">voor haer dreygen was <rhyme label="b" type="m" corresp="#s14:l2">bevreest</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Doen hy nv hadde <rhyme label="a" type="f">beleden</rhyme></l>
        <l id="s15:l2" met="3" type="-+">voor haer zijn geloue <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s15:l3" met="3" type="-+">hij heeft haer allen <rhyme label="a" type="f" corresp="#s15:l1">gebeden</rhyme></l>
        <l id="s15:l4" met="3" type="-+">met eenen blijden <rhyme label="b" type="m" corresp="#s15:l2">gemoet</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Och laet my doch met <rhyme label="a" type="f">vreden</rhyme></l>
        <l id="s16:l2" met="3" type="-+">nv ghy mijn gelooue <rhyme label="b" type="m">verstaet</rhyme></l>
        <l id="s16:l3" met="3" type="-+">vercort mijn lijden en <rhyme label="a" type="f" corresp="#s16:l1">swaerheden</rhyme></l>
        <l id="s16:l4" met="3" type="-+">doet met my na uwen <rhyme label="b" type="m" corresp="#s16:l2">raet</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Ten sal my niet <rhyme label="a" type="f">verdrieten</rhyme></l>
        <l id="s17:l2" met="3" type="-+">om die <rhyme label="b" type="m">gerechticheyt</rhyme></l>
        <l id="s17:l3" met="3" type="-+">mijn leuen te <rhyme label="a" type="f" corresp="#s17:l1">vernieten</rhyme></l>
        <l id="s17:l4" met="3" type="-+">dan is my de Croone <rhyme label="b" type="m" corresp="#s17:l2">bereyt</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Die Bisschop moeste <rhyme label="a" type="f">falen</rhyme></l>
        <l id="s18:l2" met="3" type="-+">al wat hy brochte ter <rhyme label="b" type="m">hant</rhyme></l>
        <l id="s18:l3" met="3" type="-+">sijn Diakens en <rhyme label="a" type="f" corresp="#s18:l1">Officialen</rhyme></l>
        <l id="s18:l4" met="3" type="-+">die moesten wijcken met <rhyme label="b" type="m" corresp="#s18:l2">schant</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Die waerheyt <rhyme label="a" type="f">onveranderlijck</rhyme></l>
        <l id="s19:l2" met="3" type="-+">heeft daer behouden het <rhyme label="b" type="m">velt</rhyme></l>
        <l id="s19:l3" met="3" type="-+">als ist die werelt nv niet <rhyme label="a" type="f" corresp="#s19:l1">kennelijc</rhyme></l>
        <l id="s19:l4" met="3" type="-+">voor God ist anders <rhyme label="b" type="m" corresp="#s19:l2">gestelt</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Dat heeft den bischop <rhyme label="a" type="f">verdroten</rhyme></l>
        <l id="s20:l2" met="3" type="-+">dat het schaep bleeft <rhyme label="b" type="m">onbeschroemt</rhyme></l>
        <l id="s20:l3" met="3" type="-+">hy heeft de sentencie <rhyme label="a" type="f" corresp="#s20:l1">gesloten</rhyme></l>
        <l id="s20:l4" met="3" type="-+">en hem als een ketter <rhyme label="b" type="m" corresp="#s20:l2">verdoemt</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Hy heeft hem <rhyme label="a" type="f">ouergegeuen</rhyme></l>
        <l id="s21:l2" met="3" type="-+">al in des Conincx <rhyme label="b" type="m">raet</rhyme></l>
        <l id="s21:l3" met="3" type="-+">om hem te straffen aen het <rhyme label="a" type="f" corresp="#s21:l1">leuen</rhyme></l>
        <l id="s21:l4" met="3" type="-+">als een Ketter <rhyme label="b" type="m" corresp="#s21:l2">obstinaet</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="3" type="-+">Die heeren moesten <rhyme label="a" type="f">verkiesen</rhyme></l>
        <l id="s22:l2" met="3" type="-+">en een van tween <rhyme label="b" type="m">beuroen</rhyme></l>
        <l id="s22:l3" met="3" type="-+">haer officie te <rhyme label="a" type="f" corresp="#s22:l1">verliesen</rhyme></l>
        <l id="s22:l4" met="3" type="-+">oft des Bisschops wille <rhyme label="b" type="m" corresp="#s22:l2">voldoen</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="3" type="-+">Den twelfsten dach in <rhyme label="a" type="f">october</rhyme></l>
        <l id="s23:l2" met="3" type="-+">int eenenseuentichste <rhyme label="b" type="m">iaer</rhyme></l>
        <l id="s23:l3" met="3" type="-+">zijn de heeren gecomen te <rhyme label="a" type="f" corresp="#s23:l1">samen</rhyme></l>
        <l id="s23:l4" met="3" type="-+">op thuys in des Maerschalcx <rhyme label="b" type="m" corresp="#s23:l2">sael</rhyme></l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="3" type="-+">Daer hebben sy lieuer <rhyme label="a" type="f">vercoren</rhyme></l>
        <l id="s24:l2" met="3" type="-+">ist niet een dwaesheyt <rhyme label="b" type="m">perfect</rhyme></l>
        <l id="s24:l3" met="3" type="-+">een onnosel Christen te <rhyme label="a" type="f" corresp="#s24:l1">versmoren</rhyme></l>
        <l id="s24:l4" met="3" type="-+">dan sy wouden zijn <rhyme label="b" type="m" corresp="#s24:l2">suspect</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="3" type="-+">Sy lieten hem het vonnis <rhyme label="a" type="f">horen</rhyme></l>
        <l id="s25:l2" met="3" type="-+">dat hy den seluen <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s25:l3" met="3" type="-+">int water moste <rhyme label="a" type="f" corresp="#s25:l1">versmoren</rhyme></l>
        <l id="s25:l4" met="3" type="-+">daer op was hy wel <rhyme label="b" type="m" corresp="#s25:l2">bedacht</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="3" type="-+">Hem was voor den doot niet <rhyme label="a" type="f">bange</rhyme></l>
        <l id="s26:l2" met="3" type="-+">als een Ruese int geloof <rhyme label="b" type="m">ydoon</rhyme></l>
        <l id="s26:l3" met="3" type="-+">hy hadde grote <rhyme label="a" type="f" corresp="#s26:l1">verlangen</rhyme></l>
        <l id="s26:l4" met="3" type="-+">na tnieu Jerusalem <rhyme label="b" type="m" corresp="#s26:l2">schoon</rhyme></l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="3" type="-+">Inde stoof met blooten <rhyme label="a" type="f">hoofde</rhyme></l>
        <l id="s27:l2" met="3" type="-+">sat hy den gantschen <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s27:l3" met="3" type="-+">zijn vader hy dancte en <rhyme label="a" type="f" corresp="#s27:l1">loofde</rhyme></l>
        <l id="s27:l4" met="3" type="-+">tot dat zijn vre was <rhyme label="b" type="m" corresp="#s27:l2">volbracht</rhyme>.</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="3" type="-+">Doen alle dinc was <rhyme label="a" type="f">getede</rhyme></l>
        <l id="s28:l2" met="3" type="-+">hebben sy hem heen <rhyme label="b" type="m">geleyt</rhyme></l>
        <l id="s28:l3" met="3" type="-+">vrymoedich heeft hy <rhyme label="a" type="f" corresp="#s28:l1">getreden</rhyme></l>
        <l id="s28:l4" met="3" type="-+">inden sac daer toe <rhyme label="b" type="m" corresp="#s28:l2">bereyt</rhyme>.</l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="3" type="-+">Inden sack staende <rhyme label="a" type="f">gebonden</rhyme></l>
        <l id="s29:l2" met="3" type="-+">dit liedeken en hief hy <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s29:l3" met="3" type="-+">te singen/ maer in corter <rhyme label="a" type="f" corresp="#s29:l1">stonden</rhyme></l>
        <l id="s29:l4" met="3" type="-+">was zijn leuen al wt <rhyme label="b" type="m" corresp="#s29:l2">gedaen</rhyme>.</l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="3" type="-+">Ic arm Schaepken aen groen <rhyme label="a" type="f">heyde</rhyme></l>
        <l id="s30:l2" met="3" type="-+">waer sal ick hene <rhyme label="b" type="m">gaen</rhyme></l>
        <l id="s30:l3" met="3" type="-+">van vrienden en magen moet ic <rhyme label="a" type="f" corresp="#s30:l1">scheyde</rhyme></l>
        <l id="s30:l4" met="3" type="-+">ende alleen op Christum <rhyme label="b" type="m" corresp="#s30:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s31" type="stanza">
        <l id="s31:l1" met="3" type="-+">Veel die daer by hem <rhyme label="a" type="f">waren</rhyme></l>
        <l id="s31:l2" met="3" type="-+">presen hem en ghetuychden <rhyme label="b" type="m">saen</rhyme></l>
        <l id="s31:l3" met="3" type="-+">dat hy waer sonder <rhyme label="a" type="f" corresp="#s31:l1">beswaren</rhyme></l>
        <l id="s31:l4" met="3" type="-+">om te steruen seer wel <rhyme label="b" type="m" corresp="#s31:l2">beraen</rhyme>.</l>
      </lg>
      <lg id="s32" type="stanza">
        <l id="s32:l1" met="3" type="-+">Dus is hy vrolijck <rhyme label="a" type="f">gescheyden</rhyme></l>
        <l id="s32:l2" met="3" type="-+">wt alle droefheyt <rhyme label="b" type="m">swaer</rhyme></l>
        <l id="s32:l3" met="3" type="-+">om zijn mede genoten te <rhyme label="a" type="f" corresp="#s32:l1">verbeyden</rhyme></l>
        <l id="s32:l4" met="3" type="-+">rust hy nv onder den <rhyme label="b" type="m" corresp="#s32:l2">altaer</rhyme></l>
      </lg>
      <lg id="s33" type="stanza">
        <l id="s33:l1" met="3" type="-+">Och broeders <rhyme label="a" type="f">wtvercoren</rhyme></l>
        <l id="s33:l2" met="3" type="-+">ontfangt dese blijde <rhyme label="b" type="m">maer</rhyme></l>
        <l id="s33:l3" met="3" type="-+">stelt v dit exempel te <rhyme label="a" type="f" corresp="#s33:l1">voren</rhyme></l>
        <l id="s33:l4" met="3" type="-+">oft ghy hem sout volgen <rhyme label="b" type="m" corresp="#s33:l2">naer</rhyme></l>
      </lg>
      <lg id="s34" type="stanza">
        <l id="s34:l1" met="3" type="-+">Wilt de menschen doch niet <rhyme label="a" type="f">vreesen</rhyme></l>
        <l id="s34:l2" met="3" type="-+">die maer tlichaem dooden <rhyme label="b" type="m">hier</rhyme></l>
        <l id="s34:l3" met="3" type="-+">vreest hem die de siele <rhyme label="a" type="f" corresp="#s34:l1">gepresen</rhyme></l>
        <l id="s34:l4" met="3" type="-+">mach werpen int eewige <rhyme label="b" type="m" corresp="#s34:l2">vier</rhyme>.</l>
      </lg>
      <lg id="s35" type="stanza">
        <l id="s35:l1" met="3" type="-+">O heer in druck en <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s35:l2" met="3" type="-+">wilt ons doch altijd <rhyme label="b" type="m">bystaen</rhyme></l>
        <l id="s35:l3" met="3" type="-+">oft wy voor die waerheyt souden <rhyme label="a" type="f" corresp="#s35:l1">lijden</rhyme></l>
        <l id="s35:l4" met="3" type="-+">als Douwe Eeweszoon heeft <rhyme label="b" type="m" corresp="#s35:l2">gedaen</rhyme></l>
      </lg>
      <lg id="s36" type="stanza">
        <l id="s36:l1" met="3" type="-+">Die ons dit liedeken <rhyme label="a" type="f">dichte</rhyme></l>
        <l id="s36:l2" met="3" type="-+">die heeftet wt liefden <rhyme label="b" type="m">gedaen</rhyme></l>
        <l id="s36:l3" met="3" type="-+">oft hi yemant daer mede <rhyme label="a" type="f" corresp="#s36:l1">stichte</rhyme></l>
        <l id="s36:l4" met="3" type="-+">om na die waerheyt te <rhyme label="b" type="m" corresp="#s36:l2">staen</rhyme>.</l>
      </lg>
    </lg>
  </text>
