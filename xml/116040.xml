    <melody>Nadien uw goddelijkheid</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">NAa-dien de naare <rhyme label="a" type="m">nacht</rhyme></l>
        <l id="s1:l2" met="3" type="-+">'t Gantz menschelijk <rhyme label="a" type="m" corresp="#s1:l1">geslacht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">O God! door uwe <rhyme label="b" type="f">schikking</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Diend, dat het swak <rhyme label="c" type="m">lichaam</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Door zoete slaaps <rhyme label="b" type="f" corresp="#s1:l3">verquikking</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Zy tot uw dienst <rhyme label="c" type="m" corresp="#s1:l4">bequaam</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zoo leg ik my ter <rhyme label="a" type="m">ne'er</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Naar uw bevel; o <rhyme label="a" type="m" corresp="#s2:l1">Heer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Doch zonder iets te <rhyme label="b" type="f">weeten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Of ik het <rhyme label="c" type="m">morgen-rood</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Oit weeder zal <rhyme label="b" type="f" corresp="#s2:l3">genieten</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Niets wiszer dan de <rhyme label="c" type="m" corresp="#s2:l4">dood</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die ieder <rhyme label="a" type="m">oogen-blik</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Scherp op onz leeven <rhyme label="a" type="m" corresp="#s3:l1">mikt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En meest elk t' on-tijd <rhyme label="b" type="f">neer-stort</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">'k Leg my wel als in 't <rhyme label="c" type="m">graf</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Maar gun my dat ik we'er <rhyme label="b" type="f" corresp="#s3:l3">word</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Her-steld door uwe <rhyme label="c" type="m" corresp="#s3:l4">staf</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Vergeef my al mijn <rhyme label="a" type="m">schuld</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Draag my steeds met <rhyme label="a" type="m" corresp="#s4:l1">geduld</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Tot dat ik recht <rhyme label="b" type="f">her-booren</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Uw goedheid <rhyme label="c" type="m">aangenaam</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Genaadig ben <rhyme label="b" type="f" corresp="#s4:l3">verkooren</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Tot 's Heemels <rhyme label="c" type="m" corresp="#s4:l4">erfgenaam</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Israels waakend <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s5:l2" met="3" type="-+">Die Gy slaapt <rhyme label="a" type="m" corresp="#s5:l1">nimmermeer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hoed my niet uwe <rhyme label="b" type="f">vleug'len</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Voor alle ramp en <rhyme label="c" type="m">quaad</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Wild Sathans magt <rhyme label="b" type="f" corresp="#s5:l3">beteug'len</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Neem my aan in <rhyme label="c" type="m" corresp="#s5:l4">genaad</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Laat mijne slaap of <rhyme label="a" type="m">rust</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Niet tot on-nutte <rhyme label="a" type="m" corresp="#s6:l1">lust</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Maar nood-druft my <rhyme label="b" type="f">gedyen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Geef dat ik vroeg <rhyme label="c" type="m">ontwaak</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Onreine <rhyme label="b" type="f" corresp="#s6:l3">droomerye</rhyme></l>
        <l id="s6:l6" met="3" type="-+">'t Hert niet on-zuiver <rhyme label="c" type="m" corresp="#s6:l4">maak</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zoo ras ik in deez <rhyme label="a" type="m">nacht</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Ontwaak, voer mijn <rhyme label="a" type="m" corresp="#s7:l1">gedacht</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Terstond tot U naa <rhyme label="b" type="f">booven</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Geef, dat uit 's herten <rhyme label="c" type="m">grond</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Ik straks U bid of <rhyme label="b" type="f" corresp="#s7:l3">loove</rhyme>;</l>
        <l id="s7:l6" met="3" type="-+">Of denk aan uw <rhyme label="c" type="m" corresp="#s7:l4">verbond</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Voor al, dat ik den <rhyme label="a" type="m">tijd</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die uw <rhyme label="a" type="m" corresp="#s8:l1">lang-moedigheid</rhyme></l>
        <l id="s8:l3" met="3" type="-+">My voorts geliefd te <rhyme label="b" type="f">geeven</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Niet meer naa 's vleisch <rhyme label="c" type="m">begeer</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Maar uwe wil <rhyme label="b" type="f" corresp="#s8:l3">af-leeve</rhyme></l>
        <l id="s8:l6" met="3" type="-+">In heiligheid. O <rhyme label="c" type="m" corresp="#s8:l4">Heer</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">En dat ik naa deez' <rhyme label="a" type="m">rust</rhyme></l>
        <l id="s9:l2" met="3" type="-+">D' oneindig rusten <rhyme label="a" type="m" corresp="#s9:l1">lust</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Volmaakt by U mag <rhyme label="b" type="f">smaaken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Daar 't noit nacht weezen <rhyme label="c" type="m">zal</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Och! laat my toch <rhyme label="b" type="f" corresp="#s9:l3">geraaken</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Daar Gy zijt 't al in <rhyme label="c" type="m" corresp="#s9:l4">al</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
