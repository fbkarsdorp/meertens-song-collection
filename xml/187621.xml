<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>187621</id>
    <date>
      <year-start>1681</year-start>
      <year-end>1681</year-end>
    </date>
    <location>
      <orginal-name>alkmaar</orginal-name>
      <standard-name>Alkmaar, The Netherlands</standard-name>
      <coordinates>
        <lon>52.6312592</lon>
        <lat>4.7503798</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Het regende zeer en ik word nat</melody>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MYn ziel weez al-tijd wel <rhyme label="a" type="m">gemoed</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Al 't quaad, dat u de Weereld <rhyme label="a" type="m" corresp="#s1:l1">doet</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Zal haast <rhyme label="b" type="m">vergaan</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maar blijft in 't woord des <rhyme label="c" type="f">Heeren</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Hy zal u maaken <rhyme label="b" type="m" corresp="#s1:l3">onbela'en</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Vald u het kruis by wijlen <rhyme label="a" type="m">swaar</rhyme>?</l>
        <l id="s2:l2" met="4" type="-+">De waarheid lijd en gy met <rhyme label="a" type="m" corresp="#s2:l1">haar</rhyme>.</l>
        <l id="s2:l3" met="2" type="-+">Weez wel <rhyme label="b" type="m">gemoed</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Smal is den weg er <rhyme label="c" type="f">eeren</rhyme></l>
        <l id="s2:l5" met="4" type="-+">En zaalig deezen <rhyme label="b" type="m" corresp="#s2:l3">teegen-spoed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ik ven verstooten van der <rhyme label="a" type="m">hand</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Een balling in mijn <rhyme label="a" type="m" corresp="#s3:l1">Vaader-Land</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Nu hier, nu <rhyme label="b" type="m">daar</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Die my verdreeven, <rhyme label="c" type="f">zeiden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Mijn woorden waaren 't land te <rhyme label="b" type="m" corresp="#s3:l3">swaar</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O land! Verheeven op uw <rhyme label="a" type="m">leer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Waar 't gy ook nog zoo swak en <rhyme label="a" type="m" corresp="#s4:l1">te'er</rhyme>?</l>
        <l id="s4:l3" met="2" type="-+">Was 't u een <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Uw ooren te <rhyme label="c" type="f">bereiden</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Ter waarheid? En mogt dat niet <rhyme label="b" type="m" corresp="#s4:l3">zijn</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Uw leiders hebben u <rhyme label="a" type="m">verleid</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Genaad en leeven <rhyme label="a" type="m" corresp="#s5:l1">toe-gezeid</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Al doet gy <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Dat onzen <rhyme label="c" type="f">Zaalig-maaker</rhyme></l>
        <l id="s5:l5" met="4" type="-+">De Heer der Heeren ons <rhyme label="b" type="m" corresp="#s5:l3">gebied</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dat waaren jaa de woorden <rhyme label="a" type="m">mijn</rhyme>.</l>
        <l id="s6:l2" met="4" type="-+">Ik meinde 't was u <rhyme label="a" type="m" corresp="#s6:l1">medicijn</rhyme>.</l>
        <l id="s6:l3" met="2" type="-+">Was dat de <rhyme label="b" type="m">schuld</rhyme>?</l>
        <l id="s6:l4" met="3" type="-+">Was dat de <rhyme label="c" type="f">God-verzaaker</rhyme>?</l>
        <l id="s6:l5" met="4" type="-+">En ben ik daarom niet <rhyme label="b" type="m" corresp="#s6:l3">geduld</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Of was 't om dat ik niet en <rhyme label="a" type="m">wist</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Daar uw geleerdheid wel om <rhyme label="a" type="m" corresp="#s7:l1">twist</rhyme>?</l>
        <l id="s7:l3" met="2" type="-+">Maar die de <rhyme label="b" type="m">kragt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van Christelijke <rhyme label="c" type="f">zeeden</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Verloochend heeft en weg <rhyme label="b" type="m" corresp="#s7:l3">gebragt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Uw leeraars heerschen <rhyme label="a" type="m">over-dij</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Den goeden weg beletten <rhyme label="a" type="m" corresp="#s8:l1">zy</rhyme>.</l>
        <l id="s8:l3" met="2" type="-+">Als ik <rhyme label="b" type="m">bestond</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Voor u daar in te <rhyme label="c" type="f">treeden</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Zy slooten my wel haast den <rhyme label="b" type="m" corresp="#s8:l3">mond</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Mijn bidden was daar <rhyme label="a" type="m">on-verhoord</rhyme>.</l>
        <l id="s9:l2" met="4" type="-+">Zy waaren op het ligt <rhyme label="a" type="m" corresp="#s9:l1">verstoord</rhyme>.</l>
        <l id="s9:l3" met="2" type="-+">Haar digten <rhyme label="b" type="m">raad</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Door af-gebrooken <rhyme label="c" type="f">woorden</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">My zogt te brengen in den <rhyme label="b" type="m" corresp="#s9:l3">haat</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Voor-waar, dat 's 't oude listig <rhyme label="a" type="m">oog</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Van een verdurven <rhyme label="a" type="m" corresp="#s10:l1">Synagoog</rhyme>;</l>
        <l id="s10:l3" met="2" type="-+">Den ouden <rhyme label="b" type="m">voet</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Van die daar oit <rhyme label="c" type="f">versmoorden</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Het regt onnoozel Christen <rhyme label="b" type="m" corresp="#s10:l3">bloed</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Daar ik, zy wisten zelfs wel <rhyme label="a" type="m">wat</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Ten besten voor-gesprooken <rhyme label="a" type="m" corresp="#s11:l1">had</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Die hebben 't <rhyme label="b" type="m">net</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Om in verdriet mijn <rhyme label="c" type="f">leeven</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Te brengen, my al-zoo <rhyme label="b" type="m" corresp="#s11:l3">gezet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">O! die zoo trouwelijk <rhyme label="a" type="m">gesmeekt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Uw oor in 't stof der aarden <rhyme label="a" type="m" corresp="#s12:l1">steekt</rhyme>,</l>
        <l id="s12:l3" met="2" type="-+">En bijt uw <rhyme label="b" type="m">vriend</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Wat had ik toen <rhyme label="c" type="f">bedreeven</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Aan u, dat zulk een dank <rhyme label="b" type="m" corresp="#s12:l3">verdiend</rhyme>?</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dat gy my voor een ketter <rhyme label="a" type="m">scheld</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Of lasteraar, en met <rhyme label="a" type="m" corresp="#s13:l1">geweld</rhyme></l>
        <l id="s13:l3" met="2" type="-+">U <rhyme label="b" type="m">openbaard</rhyme>;</l>
        <l id="s13:l4" met="3" type="-+">Dat hoop ik al te <rhyme label="c" type="f">lijden</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Te lijden, naa mijns Heeren <rhyme label="b" type="m" corresp="#s13:l3">aart</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Mijn Broeders meenig in 't <rhyme label="a" type="m">getal</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Die drinken van de zelve <rhyme label="a" type="m" corresp="#s14:l1">gal</rhyme>,</l>
        <l id="s14:l3" met="2" type="-+">Maar dat 's de <rhyme label="b" type="m">wijn</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Waar in wy ons <rhyme label="c" type="f">verblijden</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">En droefheids overwinnaars <rhyme label="b" type="m" corresp="#s14:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Al schuilen wy en zijn <rhyme label="a" type="m">gevlugt</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">En over-kreeten van 't <rhyme label="a" type="m" corresp="#s15:l1">gerugt</rhyme>:</l>
        <l id="s15:l3" met="2" type="-+">De waarheid <rhyme label="b" type="m">duikt</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Maar om te gaan <rhyme label="c" type="f">verrijzen</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Gelijk de Zon die 't al <rhyme label="b" type="m" corresp="#s15:l3">ontluikt</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Wanneer de grooten Herder <rhyme label="a" type="m">all'</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Zijn schaapjens eens vergaaren <rhyme label="a" type="m" corresp="#s16:l1">zal</rhyme>,</l>
        <l id="s16:l3" met="2" type="-+">Ik meen als <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Hy geen geloof zal <rhyme label="c" type="f">prijzen</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Daar uwe vrugten koomen <rhyme label="b" type="m" corresp="#s16:l3">van</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Die hem beleeden 't zijner <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Dat hy is onzen eenen <rhyme label="a" type="m" corresp="#s17:l1">Heer</rhyme>,</l>
        <l id="s17:l3" met="2" type="-+">Hebt gy <rhyme label="b" type="m">onthaald</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Met droefheid en met <rhyme label="c" type="f">traanen</rhyme>,</l>
        <l id="s17:l5" met="4" type="-+">Door uw bedrijf haar <rhyme label="b" type="m" corresp="#s17:l3">af-gedaald</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Bedekt met smaad en uit haar <rhyme label="a" type="m">huis</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Van vriend en maag' al onder 't <rhyme label="a" type="m" corresp="#s18:l1">kruis</rhyme></l>
        <l id="s18:l3" met="2" type="-+">Doen heenen <rhyme label="b" type="m">gaan</rhyme>:</l>
        <l id="s18:l4" met="3" type="-+">Op yder vrye <rhyme label="c" type="f">baanen</rhyme></l>
        <l id="s18:l5" met="4" type="-+">Drijft gy een yder op haar <rhyme label="b" type="m" corresp="#s18:l3">aan</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Gy zaagt haar gaarn in stervens <rhyme label="a" type="m">nood</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">(En meind dan waar het on-kruid <rhyme label="a" type="m" corresp="#s19:l1">dood</rhyme>)</l>
        <l id="s19:l3" met="2" type="-+">Of <rhyme label="b" type="m">weg-geleid</rhyme></l>
        <l id="s19:l4" met="3" type="-+">In banden van <rhyme label="c" type="f">Trajaanen</rhyme>;</l>
        <l id="s19:l5" met="4" type="-+">Van meenig Martelaar <rhyme label="b" type="m" corresp="#s19:l3">beschreid</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Uw wettigheid u niet en <rhyme label="a" type="m">baat</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Uw zuiverheid, nog <rhyme label="a" type="m" corresp="#s20:l1">toe-verlaat</rhyme>,</l>
        <l id="s20:l3" met="2" type="-+">Die, met <rhyme label="b" type="m">geschil</rhyme></l>
        <l id="s20:l4" met="3" type="-+">Van 't Goddelijke <rhyme label="c" type="f">weezen</rhyme>,</l>
        <l id="s20:l5" met="4" type="-+">Veragt de Goddelijke <rhyme label="b" type="m" corresp="#s20:l3">wil</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Maar Gy, o God! Die alles <rhyme label="a" type="m">ziet</rhyme>,</l>
        <l id="s21:l2" met="4" type="-+">En proefd, en troost ons in 't <rhyme label="a" type="m" corresp="#s21:l1">verdriet</rhyme>,</l>
        <l id="s21:l3" met="2" type="-+">Verligt het <rhyme label="b" type="m">land</rhyme>;</l>
        <l id="s21:l4" met="3" type="-+">De oogen wild <rhyme label="c" type="f">geneezen</rhyme></l>
        <l id="s21:l5" met="4" type="-+">Van die zoo tasten naar de <rhyme label="b" type="m" corresp="#s21:l3">wand</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">En gy, die God van herten <rhyme label="a" type="m">vreesd</rhyme>,</l>
        <l id="s22:l2" met="4" type="-+">Gedreeven door een ander <rhyme label="a" type="m" corresp="#s22:l1">Geest</rhyme>,</l>
        <l id="s22:l3" met="2" type="-+">Bewaar u <rhyme label="b" type="m">schat</rhyme></l>
        <l id="s22:l4" met="3" type="-+">In deeze boozen <rhyme label="c" type="f">daagen</rhyme>,</l>
        <l id="s22:l5" met="4" type="-+">En gaa al voort op 't regte <rhyme label="b" type="m" corresp="#s22:l3">pad</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Bezin en doe wat Christus <rhyme label="a" type="m">eist</rhyme></l>
        <l id="s23:l2" met="4" type="-+">Zoo doende gy ten Heemel <rhyme label="a" type="m" corresp="#s23:l1">reisd</rhyme>.</l>
        <l id="s23:l3" met="2" type="-+">De Sathan <rhyme label="b" type="m">jaagd</rhyme></l>
        <l id="s23:l4" met="3" type="-+">Uw ziel met duizend <rhyme label="c" type="f">laagen</rhyme>:</l>
        <l id="s23:l5" met="4" type="-+">Maar Gods geweer hem <rhyme label="b" type="m" corresp="#s23:l3">teegen-draagd</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Met ernst bestraf en laat het <rhyme label="a" type="m">quaad</rhyme>.</l>
        <l id="s24:l2" met="4" type="-+">Maar tog uw viand niet en <rhyme label="a" type="m" corresp="#s24:l1">haat</rhyme>.</l>
        <l id="s24:l3" met="2" type="-+">Word by <rhyme label="b" type="m">bestre'en</rhyme>,</l>
        <l id="s24:l4" met="3" type="-+">Doe wel, en strij met <rhyme label="c" type="f">lijden</rhyme>;</l>
        <l id="s24:l5" met="4" type="-+">De Heer is ons zoo <rhyme label="b" type="m" corresp="#s24:l3">voor-getre'en</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">En gaa geen oude schaaduw <rhyme label="a" type="m">naa</rhyme></l>
        <l id="s25:l2" met="4" type="-+">Van Iesus af naa <rhyme label="a" type="m" corresp="#s25:l1">Iosua</rhyme>.</l>
        <l id="s25:l3" met="2" type="-+">Onz land en <rhyme label="b" type="m">lot</rhyme></l>
        <l id="s25:l4" met="3" type="-+">Is niet van deezen <rhyme label="c" type="f">tijden</rhyme></l>
        <l id="s25:l5" met="4" type="-+">Onz hulp en heil is onzen <rhyme label="b" type="m" corresp="#s25:l3">God</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">Dien ouden <rhyme label="a" type="m">Testamentze-held</rhyme></l>
        <l id="s26:l2" met="4" type="-+">Wel meenig Kooning heeft <rhyme label="a" type="m" corresp="#s26:l1">geveld</rhyme>:</l>
        <l id="s26:l3" met="2" type="-+">Maar op den <rhyme label="b" type="m">troon</rhyme></l>
        <l id="s26:l4" met="3" type="-+">Van alle magt <rhyme label="c" type="f">gezeeten</rhyme></l>
        <l id="s26:l5" met="4" type="-+">Is Christus Gods beminde <rhyme label="b" type="m" corresp="#s26:l3">Zoon</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="-+">Een beeter wet, een beeter <rhyme label="a" type="m">goed</rhyme></l>
        <l id="s27:l2" met="4" type="-+">Verworven door geen viands <rhyme label="a" type="m" corresp="#s27:l1">bloed</rhyme></l>
        <l id="s27:l3" met="2" type="-+">Hy ons <rhyme label="b" type="m">voor-leid</rhyme>.</l>
        <l id="s27:l4" met="3" type="-+">O glorij <rhyme label="c" type="f">ongemeeten</rhyme>!</l>
        <l id="s27:l5" met="4" type="-+">Voor zijn gehoorzaam volk <rhyme label="b" type="m" corresp="#s27:l3">bereid</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
