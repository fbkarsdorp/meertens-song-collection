    <melody>Ik kwam voorbij een brouwerij</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEy! van daegh ist <rhyme label="a" type="m">Leening-dagh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Geen liever ick mijn leven <rhyme label="a" type="m" corresp="#s1:l1">sagh</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Tsa lustigh dan <rhyme label="b" type="f">gesongen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Gedanst, en <rhyme label="b" type="f" corresp="#s1:l3">op-gesprongen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Wt den treuren <rhyme label="c" type="m">gedomineert</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Tot datse wederom is <rhyme label="c" type="m" corresp="#s1:l5">verteert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hey, sa fris en vrolijck <rhyme label="a" type="m">Waert</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Verschaft ons hier een nieuwe <rhyme label="a" type="m" corresp="#s2:l1">Caert</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Men sal een vaentje <rhyme label="b" type="f">maken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om aen de Sang te <rhyme label="b" type="f" corresp="#s2:l3">raken</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">'t Moet soo gaen en anders <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Tot datmen door de Leeningh <rhyme label="c" type="m" corresp="#s2:l5">siet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nu dan na de <rhyme label="a" type="m">Noblite</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Drincken wy eens een <rhyme label="a" type="m" corresp="#s3:l1">Sante</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sante van Sijn <rhyme label="b" type="f">Altesse</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En oock van sijn <rhyme label="b" type="f" corresp="#s3:l3">Princesse</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die sijn goet, bloedt, en <rhyme label="c" type="m">verstandt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Gewilligh waeght voor 't <rhyme label="c" type="m" corresp="#s3:l5">Vaderlandt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'k Weet, dat mennigh Borger <rhyme label="a" type="m">sagh</rhyme></l>
        <l id="s4:l2" met="4" type="-+">De vreughde op den Leenig <rhyme label="a" type="m" corresp="#s4:l1">dagh</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Hy sou zijn goet <rhyme label="b" type="f">verkoopen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En nae de Krijgh toe <rhyme label="b" type="f" corresp="#s4:l3">loopen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Roepen al om Bier, of <rhyme label="c" type="m">Wijn</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">En sou me willen vrolijck <rhyme label="c" type="m" corresp="#s4:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Want hoe meenigh groot <rhyme label="a" type="m">Cadet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Verlaedt sijn 's Moeders weeldigh <rhyme label="a" type="m" corresp="#s5:l1">Bet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En rusten haer in 't <rhyme label="b" type="f">Wapen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Om op het Stroo te <rhyme label="b" type="f" corresp="#s5:l3">slapen</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Weten wel datmen daer Leening' <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En datmen daer soo rijck'lijck <rhyme label="c" type="m" corresp="#s5:l5">leeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Want smorgens als de Revelje <rhyme label="a" type="m">slaet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Een yder uyt sijn Hutje <rhyme label="a" type="m" corresp="#s6:l1">gaet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Tis om een <rhyme label="b" type="f">Brandewijntje</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Tot Grietje of by <rhyme label="b" type="f" corresp="#s6:l3">Trijntje</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">By die de schoonste woorden <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En daer men de meeste klets by <rhyme label="c" type="m" corresp="#s6:l5">heeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En dan daer na weer voor den <rhyme label="a" type="m">dorst</rhyme></l>
        <l id="s7:l2" met="4" type="-+">So laeftmen de keel, en smeertmen de <rhyme label="a" type="m" corresp="#s7:l1">Borst</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Ten kan ons niet <rhyme label="b" type="f">verschelen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Met halven en met <rhyme label="b" type="f" corresp="#s7:l3">heelen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Soo lang als de Kan geen Bier en <rhyme label="c" type="m">hout</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Soo dienter weer ander te zijn <rhyme label="c" type="m" corresp="#s7:l5">gebrout</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De Velt-kan is soo goeden <rhyme label="a" type="m">Maet</rhyme>.</l>
        <l id="s8:l2" met="4" type="-+">Wanneerse vol op Tafel <rhyme label="a" type="m" corresp="#s8:l1">staet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Men kan eer't sou <rhyme label="b" type="f">verschalen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Daer sulcken dronck uyt <rhyme label="b" type="f" corresp="#s8:l3">halen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Dat beyde Oogen peylend' <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">En datter u dorst af sal <rhyme label="c" type="m" corresp="#s8:l5">vergaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ons Huys is wel een stroyen <rhyme label="a" type="m">Hut</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Ter nauwer noot voor Wint <rhyme label="a" type="m" corresp="#s9:l1">beschut</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Maer wy die daer in <rhyme label="b" type="f">woonen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Verfoeyen Konings <rhyme label="b" type="f" corresp="#s9:l3">Croonen</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Tis waer hy heeft wel groote <rhyme label="c" type="m">vreugt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Maer is noyt soo in 'thert <rhyme label="c" type="m" corresp="#s9:l5">verheugt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Maer het meest' dat ons <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dat is wanneer 't Canon <rhyme label="a" type="m" corresp="#s10:l1">af-schiet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Want dan komt <rhyme label="b" type="f">Ongewassen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Ons jammerlijck <rhyme label="b" type="f" corresp="#s10:l3">verrassen</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">En blaest ons al de Kaersen <rhyme label="c" type="m">uyt</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">En dwinght dat men den Tap <rhyme label="c" type="m" corresp="#s10:l5">toe-sluyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hier mee beveel ick u <rhyme label="a" type="m">Jupijn</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">De Borsten die onder de Gaerde <rhyme label="a" type="m" corresp="#s11:l1">zijn</rhyme>;</l>
        <l id="s11:l3" met="3" type="-+">Ick wil u gaen <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Ick soeck een ander <rhyme label="b" type="f" corresp="#s11:l3">leven</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Want siet ick ben de weelde <rhyme label="c" type="m">sadt</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">En ick heb mijn Buyck al vol <rhyme label="c" type="m" corresp="#s11:l5">gehadt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
