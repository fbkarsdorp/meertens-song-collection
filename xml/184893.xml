  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">NAer stil plaetsen wil ick <rhyme label="a" type="f">vluchten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En ick gaen de vreught <rhyme label="b" type="m">voor-by</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die is gemengelt met veel <rhyme label="a" type="f" corresp="#s1:l1">suchten</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Wereldt, volght niet meer met <rhyme label="b" type="m" corresp="#s1:l2">my</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die niet wilt tempeesten <rhyme label="a" type="f">myden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Hoe sal hy die worden <rhyme label="b" type="m">quyt</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Hy seker eens sal Schip-braek <rhyme label="a" type="f" corresp="#s2:l1">lyden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Als te laet sal syn den <rhyme label="b" type="m" corresp="#s2:l2">tydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Quaelyck trecken s'werelts <rhyme label="a" type="f">lusten</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Heden word' ick dit <rhyme label="b" type="m">gewaer</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Niet kan op haeren grondt vast <rhyme label="a" type="f" corresp="#s3:l1">rusten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Niet en wil ick meer van <rhyme label="b" type="m" corresp="#s3:l2">haer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Daer sy in vermaeck doet <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Is niet anders als <rhyme label="b" type="m">venyn</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Met al, dat sy belooft te <rhyme label="a" type="f" corresp="#s4:l1">geven</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Wil ick noyt gebonden <rhyme label="b" type="m" corresp="#s4:l2">syn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Sy wilt vol geluck doen <rhyme label="a" type="f">schynen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">t'Geen sy aen den mensch <rhyme label="b" type="m">verkoopt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Maer hy vindt veel ellend', en <rhyme label="a" type="f" corresp="#s5:l1">pynen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Die naer soo een schaduw' <rhyme label="b" type="m" corresp="#s5:l2">loopt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wilt alleen den Schepper <rhyme label="a" type="f">kiesen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Hy alleen geeft geen <rhyme label="b" type="m">verdriet</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Wy sullen noyt dit goedt <rhyme label="a" type="f" corresp="#s6:l1">verliesen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En bemint doch anders <rhyme label="b" type="m" corresp="#s6:l2">niet</rhyme>.</l>
      </lg>
    </lg>
  </text>
