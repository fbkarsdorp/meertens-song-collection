<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>178296</id>
    <date>
      <year-start>1788</year-start>
      <year-end>1788</year-end>
    </date>
    <tags/>
    <melody>Hoor Kees mijn vrijer</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Komt, braave <rhyme label="a" type="f">Vrouwen</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">En wild uw Waarde <rhyme label="b" type="m">Mans</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Dog niet <rhyme label="a" type="f" corresp="#s1:l1">weerhouwen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Te dezer tyde <rhyme label="b" type="m" corresp="#s1:l2">tans</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Dat muitzugt voor hem <rhyme label="c" type="m">zwicht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Komt het voor zyn <rhyme label="c" type="m" corresp="#s1:l5">gezicht</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hy grypt geweer en <rhyme label="d" type="f">wapen</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">Toond voor dit monsterdier te zyn <rhyme label="d" type="f" corresp="#s1:l7">geschaapen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">O Leidse <rhyme label="a" type="f">Wyven</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Gy zyt ons lief en <rhyme label="b" type="m">waard</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Die Mans <rhyme label="a" type="f" corresp="#s2:l1">bekyven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Zoo hy eens raakt <rhyme label="b" type="m" corresp="#s2:l2">ontaard</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En met een straf <rhyme label="c" type="m">bedil</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dan evenwel nog <rhyme label="c" type="m" corresp="#s2:l5">wil</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Gaan onder eene <rhyme label="d" type="f">benden</rhyme></l>
        <l id="s2:l8" met="5" type="-+">Die tegens Eed en pligt hun Ov'rheid <rhyme label="d" type="f" corresp="#s2:l7">schende</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">En gy O <rhyme label="a" type="f">mannen</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Ik bid u, zyt zo <rhyme label="b" type="m">wys</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Word geen <rhyme label="a" type="f" corresp="#s3:l1">Tyrannen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Al van uw eigen <rhyme label="b" type="m" corresp="#s3:l2">vlys</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En maakt dog geen <rhyme label="c" type="m">Accoord</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Maar werkt vlytig <rhyme label="c" type="m" corresp="#s3:l5">voort</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Want anders ligt, <rhyme label="d" type="f">bekommerd</rhyme>,</l>
        <l id="s3:l8" met="5" type="-+">Uw bed en beddegoet raakt in de <rhyme label="d" type="f" corresp="#s3:l7">Lommerd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Wat zal 't dan <rhyme label="a" type="f">weezen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Als gy in bittere <rhyme label="b" type="m">kouw</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Daar legt in <rhyme label="a" type="f" corresp="#s4:l1">vreezen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gevoeld het <rhyme label="b" type="m" corresp="#s4:l2">naberouw</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">Uw wyf, niet wel te <rhyme label="c" type="m">vreen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Gebruikt dan deeze <rhyme label="c" type="m" corresp="#s4:l5">reen</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Wild u van hier maar <rhyme label="d" type="f">ruimen</rhyme>,</l>
        <l id="s4:l8" met="5" type="-+">Kruipt in uw beste hoed met mooye <rhyme label="d" type="f" corresp="#s4:l7">pluimen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Of is zy <rhyme label="a" type="f">kwader</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Zy zal zeer <rhyme label="b" type="m">Obstinaat</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Roepen: <rhyme label="a" type="f" corresp="#s5:l1">Verrader</rhyme>!</l>
        <l id="s5:l4" met="3" type="-+">Ik schop u strak op <rhyme label="b" type="m" corresp="#s5:l2">straat</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Met al u leelyk <rhyme label="c" type="m">tuyg</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Uw muts, al is hy <rhyme label="c" type="m" corresp="#s5:l5">ruig</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Zal ik ook by u smyten, <rhyme label="d" type="f">ig</rhyme>,</l>
        <l id="s5:l8" met="5" type="-+">En zal al voor u oog 'er in gaan <rhyme label="d" type="f" corresp="#s5:l7">sch....n</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Voor 't laast, O <rhyme label="a" type="f">Mannen</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">Ei, leeft dog maar <rhyme label="b" type="m">getrouw</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Wilt twist <rhyme label="a" type="f" corresp="#s6:l1">verbannen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dan zal uw Waarde <rhyme label="b" type="m" corresp="#s6:l2">Vrouw</rhyme></l>
        <l id="s6:l5" met="3" type="-+">U weezen <rhyme label="c" type="m">Onderdaan</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">'t Zal u altyd wel <rhyme label="c" type="m" corresp="#s6:l5">gaan</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">En moet gy eens ten <rhyme label="d" type="f">stryden</rhyme></l>
        <l id="s6:l8" met="5" type="-+">Stryd dan met helden moet, maar binnen <rhyme label="d" type="f" corresp="#s6:l7">Leyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
