  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SEer aerdigh wordt <rhyme label="a" type="m">verklaert</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Des Nabals wreeden <rhyme label="a" type="m" corresp="#s1:l1">Aerdt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Van eenen <rhyme label="a" type="m" corresp="#s1:l1">gierigaert</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Die hem in <rhyme label="b" type="f">in</rhyme> [...],</l>
        <l id="s1:l5" met="3" type="-+">Een Kist [...] 't Slot wel <rhyme label="c" type="m">vast</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met Goudt seer swaer <rhyme label="c" type="m" corresp="#s1:l5">gelast</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ghelijckt, en 't hem <rhyme label="c" type="m" corresp="#s1:l5">toepast</rhyme>:</l>
        <l id="s1:l8" met="2" type="-+">Want hy <rhyme label="b" type="f" corresp="#s1:l4">is</rhyme> [...],</l>
        <l id="s1:l9" met="4" type="-+">Een Koffer, die seer vast, van <rhyme label="d" type="f">buyten</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Gheen Man ter Wereldt kan <rhyme label="d" type="f" corresp="#s1:l9">ontsluyten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soo yemandt desen <rhyme label="a" type="m">Schat</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Daer uyt wel geerne <rhyme label="a" type="m" corresp="#s2:l1">hadt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die wacht soo langh, tot <rhyme label="a" type="m" corresp="#s2:l1">dat</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Hy is aen <rhyme label="b" type="f">stucken</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ghebroocken, door een <rhyme label="c" type="m">Heldt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Met kracht, en groot <rhyme label="c" type="m" corresp="#s2:l5">geweldt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dan mach hy eerst het <rhyme label="c" type="m" corresp="#s2:l5">Geldt</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Daer uyt gaen <rhyme label="b" type="f" corresp="#s2:l4">rucken</rhyme>.</l>
        <l id="s2:l9" met="4" type="-+">Maer al het Geldt moet daer in <rhyme label="d" type="f">blijven</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Tot men den Koffer doet <rhyme label="d" type="f" corresp="#s2:l9">ontlijven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een gierigaert die <rhyme label="a" type="m">tapt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het Goudt uyt sweet, en <rhyme label="a" type="m" corresp="#s3:l1">schrapt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Het overhoop, en <rhyme label="a" type="m" corresp="#s3:l1">knapt</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Het in een Slot <rhyme label="b" type="f">dan</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">En wie hem oyt <rhyme label="c" type="m">aensprack</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Om Geldt, die viel te <rhyme label="c" type="m" corresp="#s3:l5">swack</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Dewijle dat hy <rhyme label="c" type="m" corresp="#s3:l5">strack</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Daer maeckt sijn Godt <rhyme label="b" type="f" corresp="#s3:l4">van</rhyme>.</l>
        <l id="s3:l9" met="4" type="-+">Die van sijn Geldt wat hebben <rhyme label="d" type="f">wilde</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Soud doen als eene die hem <rhyme label="d" type="f" corresp="#s3:l9">vilde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer als de doodt komt <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En doet hem stucken <rhyme label="a" type="m" corresp="#s4:l1">slaen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En 't leven hene <rhyme label="a" type="m" corresp="#s4:l1">gaen</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Sullen na 't <rhyme label="b" type="f">sterven</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Sijn vrienden 't naeste <rhyme label="c" type="m">bloedt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Al sijn versameldt <rhyme label="c" type="m" corresp="#s4:l5">goedt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Vergaerdt in <rhyme label="c" type="m" corresp="#s4:l5">overvloet</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Te samen <rhyme label="b" type="f" corresp="#s4:l4">erven</rhyme>.</l>
        <l id="s4:l9" met="4" type="-+">Hy heeft verstant, en deught met <rhyme label="d" type="f">hoopen</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">Die 't kistjen sluyt, en weer doet <rhyme label="d" type="f" corresp="#s4:l9">open</rhyme>.</l>
      </lg>
    </lg>
  </text>
