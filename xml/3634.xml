    <melody>Psalm 031 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICK stell' op v vast myn <rhyme label="a" type="f">vertrauwen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En laet my <rhyme label="b" type="m">nemmermeer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Tot schanden kommen <rhyme label="b" type="m" corresp="#s1:l2">Heer</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Verlost my doch wt dit <rhyme label="a" type="f" corresp="#s1:l1">benauwen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Nae v' <rhyme label="c" type="f">gherechticheden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Bekent in alle <rhyme label="c" type="f" corresp="#s1:l5">steden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Neyght v tot my die nu ben <rhyme label="a" type="f">klachtigh</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">End om my by te <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wilt v haesten voort <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Weest my Heer een steenrotse <rhyme label="a" type="f" corresp="#s2:l1">krachtigh</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wilt myn siel in dit <rhyme label="c" type="f">lyden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als in een borcht <rhyme label="c" type="f" corresp="#s2:l5">bevryden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ghy sijt myn borcht sonder <rhyme label="a" type="f">vertzaegen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dies om uwes Naems <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Voert my wt dit <rhyme label="b" type="m" corresp="#s3:l2">gheschil</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">End wt den stricken <rhyme label="a" type="f" corresp="#s3:l1">voorgheslaegen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Treckt my O Godt <rhyme label="c" type="f">almachtigh</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ghy sijt myn kracht <rhyme label="c" type="f" corresp="#s3:l5">waerachtigh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den geest geef ick in uwen <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Want ghy hebt my <rhyme label="b" type="m">bevrydt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Godt die so getrauw' <rhyme label="b" type="m" corresp="#s4:l2">sijt</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Op v' heb' ick alleyn <rhyme label="a" type="f" corresp="#s4:l1">gestanden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Ick haete dat <rhyme label="c" type="f">bedriegen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ydelheit end dat <rhyme label="c" type="f" corresp="#s4:l5">lieghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ick sal eens met vrueghd my <rhyme label="a" type="f">verblyden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">End singhen <rhyme label="b" type="m">ouerbreydt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Heer van uwe <rhyme label="b" type="m" corresp="#s5:l2">goetheit</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Als ghy my, die ben in't <rhyme label="a" type="f" corresp="#s5:l1">lyden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">End' in een groot <rhyme label="c" type="f">beswaeren</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Sult aensien end <rhyme label="c" type="f" corresp="#s5:l5">bewaeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy geeft my niet in der <rhyme label="a" type="f">vianden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Gewelt, want sy sijn <rhyme label="b" type="m">wreet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Sonder eenigh <rhyme label="b" type="m" corresp="#s6:l2">bescheet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maer ghy geeft my Heer in dees <rhyme label="a" type="f" corresp="#s6:l1">landen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Ruymte die my <rhyme label="c" type="f">verquicket</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dat ick niet sij <rhyme label="c" type="f" corresp="#s6:l5">verstricket</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Laet my sterckte van v <rhyme label="a" type="f">verweruen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Want ouervallen <rhyme label="b" type="m">gaer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ben ick met angst end <rhyme label="b" type="m" corresp="#s7:l2">vaer</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Men siet myn ghedaente <rhyme label="a" type="f" corresp="#s7:l1">versteruen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Myn buyck is <rhyme label="c" type="f">ingheuallen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">T'leuen smeltt my met <rhyme label="c" type="f" corresp="#s7:l5">allen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Doer benaudtheit vergaet myn <rhyme label="a" type="f">leuen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Ick heb met suchten <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Versleten menigh <rhyme label="b" type="m" corresp="#s8:l2">jaer</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Doer smaet van myn haeters <rhyme label="a" type="f" corresp="#s8:l1">bedreuen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Vergaet myn kracht met <rhyme label="c" type="f">eenen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Iae verdwynen myn <rhyme label="c" type="f" corresp="#s8:l5">beenen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">By hen die my om niet <rhyme label="a" type="f">verachten</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Sijn myn naebueren <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Die hen schaemen van <rhyme label="b" type="m" corresp="#s9:l2">my</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Myn vrienden die my t'eeren <rhyme label="a" type="f" corresp="#s9:l1">plachten</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Vlieden end my <rhyme label="c" type="f">verlaeten</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Se schuwen my op <rhyme label="c" type="f" corresp="#s9:l5">straeten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Se hebben my gheheel <rhyme label="a" type="f">vergeten</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Als waer ick doodt <rhyme label="b" type="m">verrott</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Iae een ghebroken <rhyme label="b" type="m" corresp="#s10:l2">pot</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">Se smaeden daerse sijn <rhyme label="a" type="f" corresp="#s10:l1">gheseten</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">So dat aen alle <rhyme label="c" type="f">zijden</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Alle menschen my <rhyme label="c" type="f" corresp="#s10:l5">myden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">T'saemen sy nÄ™erstelick <rhyme label="a" type="f">raedplegen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Hoe dat se kleyn end <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">My eens brengen ter <rhyme label="b" type="m" corresp="#s11:l2">doot</rhyme>.</l>
        <l id="s11:l4" met="4" type="-+">Doch hop ick op v aller <rhyme label="a" type="f" corresp="#s11:l1">weghen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Dies spreeckt myn hert' <rhyme label="c" type="f">aendachtigh</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Ghy sijt myn Godt <rhyme label="c" type="f" corresp="#s11:l5">almachtigh</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">In v' hand staet myn leuen <rhyme label="a" type="f">teere</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Van myn vianden <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Verlost my met der <rhyme label="b" type="m" corresp="#s12:l2">daet</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Bevrijdt my van hen die my <rhyme label="a" type="f" corresp="#s12:l1">seere</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Veruolghen end <rhyme label="c" type="f">belaeden</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Iae soecken te <rhyme label="c" type="f" corresp="#s12:l5">verraeden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Laet ouer my v aenschijn <rhyme label="a" type="f">lichten</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Dat my v <rhyme label="b" type="m">goedicheit</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Bewaer voor <rhyme label="b" type="m" corresp="#s13:l2">teghenheit</rhyme>.</l>
        <l id="s13:l4" met="4" type="-+">Wilt my van mynen wegh <rhyme label="a" type="f" corresp="#s13:l1">berichten</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Behoedt my voor <rhyme label="c" type="f">oneere</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Dat bidd' ick v O <rhyme label="c" type="f" corresp="#s13:l5">Heere</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Beschaemt end stom moeten sy <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Die lueghensprekers <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Met haer nijdigh <rhyme label="b" type="m" corresp="#s14:l2">gheschal</rhyme>.</l>
        <l id="s14:l4" met="4" type="-+">Die teghen den vromen <rhyme label="a" type="f" corresp="#s14:l1">gepresen</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Sijn stout fier end <rhyme label="c" type="f">hooghmoedigh</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">In't spotten <rhyme label="c" type="f" corresp="#s14:l5">ouervloedigh</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Hoe groot is't dat ghy hem wilt <rhyme label="a" type="f">gheuen</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Die v met hert' end <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">O Heer ten rechten <rhyme label="b" type="m" corresp="#s15:l2">vreest</rhyme>.</l>
        <l id="s15:l4" met="4" type="-+">Heerlick is't end hooghe <rhyme label="a" type="f" corresp="#s15:l1">verheuen</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Dat ghy hem gheeft <rhyme label="c" type="f">genaedigh</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Die op v hoept <rhyme label="c" type="f" corresp="#s15:l5">gestaedigh</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">By v in uwe woninghe <rhyme label="a" type="f">schoon</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Verberght ghy dien man <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Voor der boosen <rhyme label="b" type="m" corresp="#s16:l2">hooghmoedt</rhyme>.</l>
        <l id="s16:l4" met="4" type="-+">Ghy bewaert oock sijnen <rhyme label="a" type="f" corresp="#s16:l1">persoone</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Vry end gantsch <rhyme label="c" type="f">onbelaeden</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Voor den tonghen die <rhyme label="c" type="f" corresp="#s16:l5">schaeden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Ick wil v prysen <rhyme label="a" type="f">onuerdroten</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Om dat ghy Heer <rhyme label="b" type="m">altydt</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">My goet end vriendlick <rhyme label="b" type="m" corresp="#s17:l2">sijt</rhyme>.</l>
        <l id="s17:l4" met="4" type="-+">End my in een stadt vast <rhyme label="a" type="f" corresp="#s17:l1">besloten</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">Bewaert hebt (soo't magh <rhyme label="c" type="f">blycken</rhyme>)</l>
        <l id="s17:l6" met="3" type="-+">End beschermt <rhyme label="c" type="f" corresp="#s17:l5">desgelycken</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">So langh' ick was in myn <rhyme label="a" type="f">vertzaegen</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Sprack ick: Ghy hebt my <rhyme label="b" type="m">gaer</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Nu verstooten <rhyme label="b" type="m" corresp="#s18:l2">voorwaer</rhyme>.</l>
        <l id="s18:l4" met="4" type="-+">Doch ghy hebt Heer verhoort myn <rhyme label="a" type="f" corresp="#s18:l1">klaegen</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">Als ick in <rhyme label="c" type="f">tegenheden</rhyme>,</l>
        <l id="s18:l6" met="3" type="-+">Geschreyt hebb' end <rhyme label="c" type="f" corresp="#s18:l5">gebeden</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Hebt Godt lief ghy sijn <rhyme label="a" type="f">wtuerkoren</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Die de vrome <rhyme label="b" type="m">behoedt</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">End die wreede <rhyme label="b" type="m" corresp="#s19:l2">verdoet</rhyme>.</l>
        <l id="s19:l4" met="4" type="-+">Sijt kloeck, geeft den moet niet <rhyme label="a" type="f" corresp="#s19:l1">verloren</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Want Godt wilt die <rhyme label="c" type="f">aenschauwen</rhyme>,</l>
        <l id="s19:l6" met="3" type="-+">Die op hem staen end <rhyme label="c" type="f" corresp="#s19:l5">bawen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
