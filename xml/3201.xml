  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">WAerheydt, ware <rhyme label="a" type="f">Waerheydt</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Hoe zijt ghy <rhyme label="b" type="m">versmaedt</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Daer u klaere <rhyme label="a" type="f" corresp="#s1:l1">klaerheydt</rhyme></l>
        <l id="s1:l4" met="3" type="+-">'t Al te boven <rhyme label="b" type="m" corresp="#s1:l2">gaet</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Daer u rechte <rhyme label="c" type="f">weghen</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Met een heerlijck <rhyme label="d" type="m">licht</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Eenen rijcken <rhyme label="c" type="f" corresp="#s1:l5">zeghen</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Aen sen Tre'ers <rhyme label="d" type="m" corresp="#s1:l6">bericht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Leughens baen is <rhyme label="a" type="f">moeylijck</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">En vol <rhyme label="b" type="m">duysterheydt</rhyme>;</l>
        <l id="s2:l3" met="3" type="+-">Leughen is <rhyme label="a" type="f" corresp="#s2:l1">verfoeylijck</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Wijlse quaedt <rhyme label="b" type="m" corresp="#s2:l2">bereydt</rhyme>;</l>
        <l id="s2:l5" met="3" type="+-">Leughen moetmen <rhyme label="c" type="f">haten</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Leughen moetmen <rhyme label="d" type="m">vlien</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Leughen moetmen <rhyme label="c" type="f" corresp="#s2:l5">laten</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">En nae Waerheydt <rhyme label="d" type="m" corresp="#s2:l6">sien</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Waerheydt sal noyt <rhyme label="a" type="f">vreesen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Voor des Leughens <rhyme label="b" type="m">kracht</rhyme>;</l>
        <l id="s3:l3" met="3" type="+-">Waerheydt wierdt voor <rhyme label="a" type="f" corresp="#s3:l1">desen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Meer dan nu <rhyme label="b" type="m" corresp="#s3:l2">gheacht</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Self de blinde <rhyme label="c" type="f">Menschen</rhyme></l>
        <l id="s3:l6" met="3" type="+-">In 'et <rhyme label="d" type="m">Heydenschap</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Was 'er hooghste <rhyme label="c" type="f" corresp="#s3:l5">wenschen</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Nae des Waerheydts <rhyme label="d" type="m" corresp="#s3:l6">trap</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Wijlse mee <rhyme label="a" type="f">bevonden</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Hoe veracht het <rhyme label="b" type="m">waer</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Als de <rhyme label="a" type="f" corresp="#s4:l1">Leughen-monden</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Raeckten in <rhyme label="b" type="m" corresp="#s4:l2">ghevaer</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Hoe bela'en, <rhyme label="c" type="f">beteutert</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Datter 't wesen <rhyme label="d" type="m">stondt</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Als 'et was <rhyme label="c" type="f" corresp="#s4:l5">verpeutert</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Door 'er <rhyme label="d" type="m" corresp="#s4:l6">Leughen-mondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Die de Waerheydt <rhyme label="a" type="f">minnen</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Met een reyn <rhyme label="b" type="m">ghemoedt</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Hebben in 'er <rhyme label="a" type="f" corresp="#s5:l1">sinnen</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Een uytnement <rhyme label="b" type="m" corresp="#s5:l2">soet</rhyme>:</l>
        <l id="s5:l5" met="3" type="+-">maer die Leughen <rhyme label="c" type="f">pleghen</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Hebben in 'er <rhyme label="d" type="m">hert</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">In de plaets van <rhyme label="c" type="f" corresp="#s5:l5">zeghen</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Wroeghelijcke <rhyme label="d" type="m" corresp="#s5:l6">smert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Waerheydt is van <rhyme label="a" type="f">boven</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Van des Heeren <rhyme label="b" type="m">aerdt</rhyme>:</l>
        <l id="s6:l3" met="3" type="+-">Leughen is <rhyme label="a" type="f" corresp="#s6:l1">verschoven</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Nae der <rhyme label="b" type="m" corresp="#s6:l2">Hellen-waerdt</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">Oock haer doen en <rhyme label="c" type="f">wercken</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">En 'er boose <rhyme label="d" type="m">daedt</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Doet ghenoegh <rhyme label="c" type="f" corresp="#s6:l5">bemercken</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Heur afkomst en <rhyme label="d" type="m" corresp="#s6:l6">staet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Waerheydt die nu, <rhyme label="a" type="f">leyder</rhyme>!</l>
        <l id="s7:l2" met="3" type="+-">Soo vertreden <rhyme label="b" type="m">light</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">Is den <rhyme label="a" type="f" corresp="#s7:l1">wegh-bereyder</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Van 'er <rhyme label="b" type="m" corresp="#s7:l2">Vreden-sticht</rhyme>:</l>
        <l id="s7:l5" met="3" type="+-">Waerheydt voert de <rhyme label="c" type="f">ziele</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Die de Waerheydt <rhyme label="d" type="m">mint</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Vyt 'et droevigh <rhyme label="c" type="f" corresp="#s7:l5">krielen</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Daerse ruste <rhyme label="d" type="m" corresp="#s7:l6">vindt</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>
