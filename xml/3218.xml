  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Hoog verheven <rhyme label="a" type="f">schatten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die van de roest en <rhyme label="a" type="f" corresp="#s1:l1">matten</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En dieven wordt <rhyme label="b" type="m">berooft</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">O slechte stof en <rhyme label="c" type="f">schijven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die hier op d'aerd' moet <rhyme label="c" type="f" corresp="#s1:l4">blijven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hoe hoogh zijt ghy <rhyme label="b" type="m" corresp="#s1:l3">ghelooft</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">V rijckdom raeckt tot <rhyme label="a" type="f">scherven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">V gelt moet al <rhyme label="a" type="f" corresp="#s2:l1">verderven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer Deughde <rhyme label="b" type="m">nimmermeer</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Als 't wereltsche vergaen // <rhyme label="c" type="f">sal</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">De Deughde blijven staen // <rhyme label="c" type="f" corresp="#s2:l4">sal</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Geduerigh even <rhyme label="b" type="m" corresp="#s2:l3">seer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Deught sal euwigh <rhyme label="a" type="f">groeyen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">De Deught sal altijdt <rhyme label="a" type="f" corresp="#s3:l1">bloeyen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dit is een Edel <rhyme label="b" type="m">pant</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">De Rijckdom moet <rhyme label="c" type="f">beswijcken</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Se moet voor Deughde <rhyme label="c" type="f" corresp="#s3:l4">strijcken</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Verstuyven aen een <rhyme label="b" type="m" corresp="#s3:l3">kant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die hier niet rijck in Godt // <rhyme label="a" type="f">is</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Maer meest op geldt versot // <rhyme label="a" type="f" corresp="#s4:l1">is</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wat heeft hy? <rhyme label="b" type="m">niet-met-al</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">De rijckdom is <rhyme label="c" type="f">gelegen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">In Godes milden <rhyme label="c" type="f" corresp="#s4:l4">zeghen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Maer niet in't <rhyme label="b" type="m" corresp="#s4:l3">Geldts-ghetal</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">'t Gun vluchtigh is, is <rhyme label="a" type="f">nietigh</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En nietigh is <rhyme label="a" type="f" corresp="#s5:l1">verdrietigh</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Maer Geldt is't bey <rhyme label="b" type="m">ghelijck</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Vaeck wordt in korte <rhyme label="c" type="f">stonden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Een Rijcken arm <rhyme label="c" type="f" corresp="#s5:l4">ghevonden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En weer een Armen <rhyme label="b" type="m" corresp="#s5:l3">rijck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De Deught sal noyt <rhyme label="a" type="f">vervallen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Hoe seer de Spotters <rhyme label="a" type="f" corresp="#s6:l1">brallen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Haer wesen altijdt <rhyme label="b" type="m">blijft</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">'t Is prijslijck te <rhyme label="c" type="f">vergaren</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">'t Is reden te <rhyme label="c" type="f" corresp="#s6:l4">bewaren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">'t Gun eeuwighlijck <rhyme label="b" type="m" corresp="#s6:l3">beklijft</rhyme>.</l>
      </lg>
    </lg>
  </text>
