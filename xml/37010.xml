  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs-men schreef sestien <rhyme label="a" type="f">hondert</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Seven-en-sestigh <rhyme label="b" type="m">jaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Heeft Brussel heel <rhyme label="a" type="f" corresp="#s1:l1">verwondert</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Sien trouwen een Blindt <rhyme label="b" type="m" corresp="#s1:l2">paer</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Twee getuygen die daer <rhyme label="c" type="f">quamen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Den Pastoor vyf Liên <rhyme label="c" type="f" corresp="#s1:l5">te-samen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hadden maer een oogh te <rhyme label="b" type="m" corresp="#s1:l2">gaêr</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waer sloegh 't blint <rhyme label="a" type="f">Cupidotjen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Oyt blinder slagh als <rhyme label="b" type="m">hier</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Te recht is 't <rhyme label="a" type="f" corresp="#s2:l1">Minne-gotjen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Een blindt verbonden <rhyme label="b" type="m" corresp="#s2:l2">dier</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Siet eens hoe den eenen <rhyme label="c" type="f">Blinden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Siet den anderen te <rhyme label="c" type="f" corresp="#s2:l5">vinden</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Al en siet hy niet een <rhyme label="b" type="m" corresp="#s2:l2">sier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Blinden slaet als <rhyme label="a" type="f">Blinden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Naer 't Ey en 't gaet noch <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Want hy treft syn <rhyme label="a" type="f" corresp="#s3:l1">beminde</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hy slaet haer op haer <rhyme label="b" type="m" corresp="#s3:l2">vel</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Siet wat spel dat eenen <rhyme label="c" type="f">Blinden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Hier komt spelen voor de <rhyme label="c" type="f" corresp="#s3:l5">siende</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Blinde min speelt Blinde <rhyme label="b" type="m" corresp="#s3:l2">spel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den Blinden die mis-acht <rhyme label="a" type="f">was</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die hier noyt dagh en <rhyme label="b" type="m">sagh</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">By wie het altydt nacht <rhyme label="a" type="f" corresp="#s4:l1">was</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Siet synen Bruyloft <rhyme label="b" type="m" corresp="#s4:l2">dagh</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Die staegh in den nacht moest <rhyme label="c" type="f">treuren</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Magh op desen dagh <rhyme label="c" type="f" corresp="#s4:l5">boncoeuren</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Ende maken bly <rhyme label="b" type="m" corresp="#s4:l2">gheschagh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Blindt-man wat <rhyme label="a" type="f">speculati'</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Saeght g'in een Blinde <rhyme label="b" type="m">Maeght</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wat saeghdy al voor <rhyme label="a" type="f" corresp="#s5:l1">grati'</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In die ghy niet en <rhyme label="b" type="m" corresp="#s5:l2">saeght</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Gy en saeght in haer geen <rhyme label="c" type="f">fouten</rhyme></l>
        <l id="s5:l6" met="4" type="+-">En u Truy wist wel te <rhyme label="c" type="f" corresp="#s5:l5">kouten</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Is 't dat niet u <rhyme label="b" type="m" corresp="#s5:l2">behaeght</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Nu sien ick wel dat <rhyme label="a" type="f">d'ooghen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Oft wel den sienden <rhyme label="b" type="m">sin</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ons niet alleen en <rhyme label="a" type="f" corresp="#s6:l1">tooghen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">De weghen in de <rhyme label="b" type="m" corresp="#s6:l2">min</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Maer malkander met <rhyme label="c" type="f">behooren</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Aen te spreken en te <rhyme label="c" type="f" corresp="#s6:l5">hooren</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Brengt ooc min en vrinschap <rhyme label="b" type="m" corresp="#s6:l2">in</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wanneer ghy by u <rhyme label="a" type="f">Vryster</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Op d'Orghel hebt <rhyme label="b" type="m">ghespelt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Heeft sy ghelyck een <rhyme label="a" type="f" corresp="#s7:l1">Lyster</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Mottetjens naer <rhyme label="b" type="m" corresp="#s7:l2">ghequelt</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Als ghy speelden op u <rhyme label="c" type="f">Orghel</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Heeft u Nymphe op haer <rhyme label="c" type="f" corresp="#s7:l5">gorghel</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Echo soerjens naer <rhyme label="b" type="m" corresp="#s7:l2">ghebeeldt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghy-lié en sult <rhyme label="a" type="f">malkand'ren</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Noyt thoonen sure <rhyme label="b" type="m">mien</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Den eenen sal den <rhyme label="a" type="f" corresp="#s8:l1">and'ren</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Noyt suer oft stuer <rhyme label="b" type="m" corresp="#s8:l2">besien</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Dat fray kanskẽ dat soet <rhyme label="c" type="f">vruchtjẽ</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Dat ghelucksken dat <rhyme label="c" type="f" corresp="#s8:l5">genuchtjen</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Hebben alle blinde <rhyme label="b" type="m" corresp="#s8:l2">Liên</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">U Lief is fray in 't <rhyme label="a" type="f">doncker</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Daer wordt sy fray <rhyme label="b" type="m">gheacht</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Ghy zyt oock een fray <rhyme label="a" type="f" corresp="#s9:l1">Joncker</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Want 't is by u staegh <rhyme label="b" type="m" corresp="#s9:l2">nacht</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Alle vlecken ende <rhyme label="c" type="f">plecken</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Sal de blinde liefde <rhyme label="c" type="f" corresp="#s9:l5">decken</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Dat is blinde liefdes k <rhyme label="b" type="m" corresp="#s9:l2">racht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">De plecken ende <rhyme label="a" type="f">smetten</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Die ghy-liê niet en <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En sullen u niet <rhyme label="a" type="f" corresp="#s10:l1">letten</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Oft brengen in <rhyme label="b" type="m" corresp="#s10:l2">verdriet</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Al-te-mael de <rhyme label="c" type="f">leelyckheden</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Die-men in syn Bruytens <rhyme label="c" type="f" corresp="#s10:l5">leden</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Niet en siet, en schaden <rhyme label="b" type="m" corresp="#s10:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Alwaer 't dat u <rhyme label="a" type="f">Beminde</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Waer leelyck als een <rhyme label="b" type="m">Aep</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Nochtans s' is voor den <rhyme label="a" type="f" corresp="#s11:l1">Blinde</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Soo soet gelyck een <rhyme label="b" type="m" corresp="#s11:l2">Schaep</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Soo gy monsters kryght van <rhyme label="c" type="f">Kinders</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Siedy 't niet tẽ baert geen <rhyme label="c" type="f" corresp="#s11:l5">hinders</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Wieghtse vryelyck in <rhyme label="b" type="m" corresp="#s11:l2">slaep</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Oft Blinde Mans en <rhyme label="a" type="f">Wyven</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Oudt worden ende <rhyme label="b" type="m">tay</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Nochtans de blinde <rhyme label="a" type="f" corresp="#s12:l1">blyven</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Altydt al even <rhyme label="b" type="m" corresp="#s12:l2">fray</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Blinde-mans en blinde <rhyme label="c" type="f">Vrouwen</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Konnen noyt gheen vleck <rhyme label="c" type="f" corresp="#s12:l5">aenschouwen</rhyme></l>
        <l id="s12:l7" met="3" type="-+">In hun blinde <rhyme label="b" type="m" corresp="#s12:l2">weder-gay</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">En dat 't best' is van <rhyme label="a" type="f">allen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">De blinde Trouw is <rhyme label="b" type="m">Trouw</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">s'En laet noyt d'ooghen <rhyme label="a" type="f" corresp="#s13:l1">vallen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Op anders Man oft <rhyme label="b" type="m" corresp="#s13:l2">Vrouw</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Blinde lieden by <rhyme label="c" type="f">malkander</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Slaen hun oogen op gheen <rhyme label="c" type="f" corresp="#s13:l5">ander</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Blinde Trouw is seer <rhyme label="b" type="m" corresp="#s13:l2">ghetrouw</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Sal lustigh blinde <rhyme label="a" type="f">Vrinden</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">'k Gheef u deês volle <rhyme label="b" type="m">kruyck</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">In eenen, en een <rhyme label="a" type="f" corresp="#s14:l1">Blinden</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Te lappen in den <rhyme label="b" type="m" corresp="#s14:l2">buyck</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">Ghy-liê sult al sydy <rhyme label="c" type="f">Blinde</rhyme></l>
        <l id="s14:l6" met="4" type="+-">Sonder keers den mont wel <rhyme label="c" type="f" corresp="#s14:l5">vinde</rhyme></l>
        <l id="s14:l7" met="3" type="-+">Drinckt op de manier van <rhyme label="b" type="m" corresp="#s14:l2">Layck</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Al dronckt ghy met u <rhyme label="a" type="f">beyden</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Van desen Wyn soo <rhyme label="b" type="m">sterck</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Dat m'u naer 't bedt moest <rhyme label="a" type="f" corresp="#s15:l1">lyden</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Met eenen Knecht oft <rhyme label="b" type="m" corresp="#s15:l2">Klerck</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">'t En sal daerom niet meer <rhyme label="c" type="f">gellen</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Ghy moet efter twee <rhyme label="c" type="f" corresp="#s15:l5">ghesellen</rhyme></l>
        <l id="s15:l7" met="3" type="-+">Dag'lycks hebben tot dit <rhyme label="b" type="m" corresp="#s15:l2">werck</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Ick en wil nu niet <rhyme label="a" type="f">vraghen</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Van onsen blinde <rhyme label="b" type="m">Kal</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Wie 't Kindt sal sien te <rhyme label="a" type="f" corresp="#s16:l1">vaghen</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Als sy een hebben <rhyme label="b" type="m" corresp="#s16:l2">sal</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">Oft wie 't vier sal sien te <rhyme label="c" type="f">stoken</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Om het Kindt syn Pap te <rhyme label="c" type="f" corresp="#s16:l5">koken</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">'k Moey my daermed' niet met <rhyme label="b" type="m" corresp="#s16:l2">al</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">'k Heb maer diet Liedt ô <rhyme label="a" type="f">Vrinden</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Ghemaeckt tot ons <rhyme label="b" type="m">playsier</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Om dat het Dries den <rhyme label="a" type="f" corresp="#s17:l1">Blinden</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Sou spelen op syn <rhyme label="b" type="m" corresp="#s17:l2">Lier</rhyme>,</l>
        <l id="s17:l5" met="4" type="+-">Tot vermaeck van droeve <rhyme label="c" type="f">geesten</rhyme></l>
        <l id="s17:l6" met="4" type="+-">Op de <rhyme label="c" type="f" corresp="#s17:l5">Boeren-Bruyloft-feesten</rhyme>,</l>
        <l id="s17:l7" met="3" type="-+">Als de Huys-liên gaen te <rhyme label="b" type="m" corresp="#s17:l2">Bier</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
