  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">STaet op ontwaeckt nv al <rhyme label="a" type="m">ghemeyn</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ghy die daer slaept in sonden <rhyme label="a" type="m" corresp="#s1:l1">onreyn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Laet v van Godts woort <rhyme label="b" type="f">leeren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Tot Christum wilt v <rhyme label="b" type="f" corresp="#s1:l3">bekeeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">In desen aenghenamen <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Wilt v bekeeren sonder <rhyme label="a" type="m" corresp="#s2:l1">respijt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">De dach is <rhyme label="b" type="f">opgheresen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Der salicheyt <rhyme label="b" type="f" corresp="#s2:l3">ghepresen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Luystert en hoort na s'Heeren <rhyme label="a" type="m">woort</rhyme></l>
        <l id="s3:l2" met="4" type="-+">D'welck de Siele can gheuen <rhyme label="a" type="m" corresp="#s3:l1">confoort</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Wilt ghy die straffe <rhyme label="b" type="f">ontulieden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Diemen sal sien <rhyme label="b" type="f" corresp="#s3:l3">gheschieden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Vliet wt Egypten en Babel <rhyme label="a" type="m">rasch</rhyme></l>
        <l id="s4:l2" met="4" type="-+">En wilt aentrecken ts'Heeren <rhyme label="a" type="m" corresp="#s4:l1">harnasch</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Om vromelijck te <rhyme label="b" type="f">strijden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In dese boose <rhyme label="b" type="f" corresp="#s4:l3">tijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Anders sult ghy verloren <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En loon nae uwe wercken <rhyme label="a" type="m" corresp="#s5:l1">ontfaen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Wort ghy deelachtich <rhyme label="b" type="f">gheuonden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In die Babiloonsche <rhyme label="b" type="f" corresp="#s5:l3">sonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nv is den dach des Heeren <rhyme label="a" type="m">naer</rhyme></l>
        <l id="s6:l2" met="4" type="-+">O mensche hebt ghy noch gheenen <rhyme label="a" type="m" corresp="#s6:l1">vaer</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Het sweert wort bloedich <rhyme label="b" type="f">beuonden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ouer die Babyloonsche <rhyme label="b" type="f" corresp="#s6:l3">sonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Vreeset den Heere al <rhyme label="a" type="m">ghemeyn</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Of v naeckt druck en groot <rhyme label="a" type="m" corresp="#s7:l1">gheweyn</rhyme></l>
        <l id="s7:l3" met="3" type="-+">En knerselinghe der <rhyme label="b" type="f">tanden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Ghebonden met helsche <rhyme label="b" type="f" corresp="#s7:l3">banden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Schout de werelt en cruycet <rhyme label="a" type="m">vleesch</rhyme></l>
        <l id="s8:l2" met="4" type="-+">En leuet nae der Schriftueren <rhyme label="a" type="m" corresp="#s8:l1">heesch</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Laet menschen leeringhen <rhyme label="b" type="f">varen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Godts woort wilt wel <rhyme label="b" type="f" corresp="#s8:l3">bewaren</rhyme>.</l>
      </lg>
    </lg>
  </text>
