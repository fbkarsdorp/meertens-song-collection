    <melody>Onlangs ging ik uit jagen</melody>
    <categories>
      <category translation="love and sex">liefde en seks</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Waar schuil ik voor de <rhyme label="a" type="f">lonken</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Van uw zoet <rhyme label="b" type="m">gezicht</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Die mijn vol <rhyme label="a" type="f" corresp="#s1:l1">vonken</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Van de Liefde <rhyme label="b" type="m" corresp="#s1:l2">sticht</rhyme>!</l>
        <l id="s1:l5" met="4" type="-+">Myn boezem, al te fel <rhyme label="c" type="m">geraekt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gevoel ik dat van <rhyme label="d" type="f">binnen</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Als een Ethna <rhyme label="c" type="m" corresp="#s1:l5">blaekt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hoe vrolijk zou ik <rhyme label="a" type="f">lyen</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Als gy, schoone, <rhyme label="b" type="m">waert</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Gelyk de <rhyme label="a" type="f" corresp="#s2:l1">Byen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Wreet en zoet van <rhyme label="b" type="m" corresp="#s2:l2">aerdt</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Sy quetzen ons wel <rhyme label="c" type="m">onverwacht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Maer geven ook de <rhyme label="d" type="f">Honigh</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Die de wond <rhyme label="c" type="m" corresp="#s2:l5">verzacht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De pijlen van uw <rhyme label="a" type="f">Oogen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Die verwonden <rhyme label="b" type="m">my</rhyme>.</l>
        <l id="s3:l3" met="2" type="-+">Toont my uw <rhyme label="a" type="f" corresp="#s3:l1">medoogen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Als den Honing <rhyme label="b" type="m" corresp="#s3:l2">By</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Genees, genees myn harten <rhyme label="c" type="m">wond</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met Honing douw en <rhyme label="d" type="f">Tranen</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Van uw lieve <rhyme label="c" type="m" corresp="#s3:l5">mond</rhyme>!</l>
      </lg>
    </lg>
  </text>
