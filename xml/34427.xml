    <melody>O vader van het hoogste licht</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Vaeder van het hooghste <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Als ghy u minnelijck <rhyme label="a" type="m" corresp="#s1:l1">ghesicht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op Magdalenam maer en <rhyme label="b" type="m">stelt</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Jn vlammen haere siel <rhyme label="c" type="m">gheraeckt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Die door de soete liefde <rhyme label="c" type="m" corresp="#s1:l4">blaeckt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Het ijs van haer kout herte <rhyme label="b" type="m" corresp="#s1:l3">smelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy loopt door liefdens pijl <rhyme label="a" type="m">door-wont</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En gaet wasschen, ô nieuwen <rhyme label="a" type="m" corresp="#s2:l1">vont</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Met traenen Christi voeten <rhyme label="b" type="m">net</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Met t'hayr heeft sy die <rhyme label="c" type="m">af-ghedrooght</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ghekust, ghesalft en <rhyme label="c" type="m" corresp="#s2:l4">ghepooght</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Soo uyt te wasschen haere <rhyme label="b" type="m" corresp="#s2:l3">smert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">S'en had' gheen vreese, nochte <rhyme label="a" type="m">schroom</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Te staen onder den <rhyme label="a" type="m" corresp="#s3:l1">Kruysen-boom</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">By t'graf bleef sy heel <rhyme label="b" type="m">onversaeght</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Haer kloecken moet en nam gheen <rhyme label="c" type="m">acht</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Op't Krijs-volck, oft Soldaeten <rhyme label="c" type="m" corresp="#s3:l4">wacht</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">De liefde had de vrees <rhyme label="b" type="m" corresp="#s3:l3">verjaeght</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O liefde Christi sonder <rhyme label="a" type="m">gal</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ontfanght ons in u soet <rhyme label="a" type="m" corresp="#s4:l1">ghetal</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Vergheeft dat wy hebben <rhyme label="b" type="m">misdaen</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Vergheeft de boete met de <rhyme label="c" type="m">schult</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Met gratie ons siel <rhyme label="c" type="m" corresp="#s4:l4">vervult</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Doet ons des Hemels loon <rhyme label="b" type="m" corresp="#s4:l3">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den Vaeder die sy lof en <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Met Christo Jesu onsen <rhyme label="a" type="m" corresp="#s5:l1">Heer</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Lof sy u oock ô heyligh <rhyme label="b" type="m">Gheest</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">Van nu tot inder <rhyme label="c" type="m">eeuwigheydt</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Lof heylighe <rhyme label="c" type="m" corresp="#s5:l4">Drijvuldigheydt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Die sijt, sult sijn en hebt <rhyme label="b" type="m" corresp="#s5:l3">gheweest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
