    <melody>Het daagt in de oosten</melody>
  <author>Jacob Coenraetsz Mayvogel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Sonne met haer <rhyme label="a" type="f">stralen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Het Aerdtrijck <rhyme label="b" type="m">overschijnt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En laet seer lieflijck <rhyme label="a" type="f" corresp="#s1:l1">dalen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Haer licht, waer door <rhyme label="b" type="m" corresp="#s1:l2">verdwijnt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">De nacht vol <rhyme label="c" type="f">duysterheden</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Hier <rhyme label="c" type="f" corresp="#s1:l5">beneden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Bloempjes aen der <rhyme label="a" type="f">Heyden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Staen lieflijck in haer <rhyme label="b" type="m">fleur</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Bossen, Velden, <rhyme label="a" type="f" corresp="#s2:l1">Weyden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Zijn vol van soete <rhyme label="b" type="m" corresp="#s2:l2">geur</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">De Vogelkens die <rhyme label="c" type="f">singen</rhyme></l>
        <l id="s2:l6" met="2" type="+-">Ende <rhyme label="c" type="f" corresp="#s2:l5">springen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Alsoo is <rhyme label="a" type="f">aengename</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De Son van <rhyme label="b" type="m">vriend'lijckheyt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Tusschen twee lieven <rhyme label="a" type="f" corresp="#s3:l1">t'samen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die 't al ten besten <rhyme label="b" type="m" corresp="#s3:l2">leyt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En maeckt het huys vol <rhyme label="c" type="f">vreughde</rhyme></l>
        <l id="s3:l6" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s3:l5">geneughde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De Son moet altijt <rhyme label="a" type="f">schijnen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van Eendracht ende <rhyme label="b" type="m">vreed</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Zy doet de nacht <rhyme label="a" type="f" corresp="#s4:l1">verdwijnen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van twist en tweedracht <rhyme label="b" type="m" corresp="#s4:l2">meed</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Zy doet de bloempjes <rhyme label="c" type="f">luycken</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Dat zy <rhyme label="c" type="f" corresp="#s4:l5">ruycken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Voorsichtigh moet ghy <rhyme label="a" type="f">myen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Het eerste <rhyme label="b" type="m">twist-gekijf</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">'t En past noyt in het <rhyme label="a" type="f" corresp="#s5:l1">vryen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Veel min van man en <rhyme label="b" type="m" corresp="#s5:l2">wijf</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Soo sult ghy nimmer <rhyme label="c" type="f">klagen</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">Al u <rhyme label="c" type="f" corresp="#s5:l5">dagen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Komen daer <rhyme label="a" type="f">Donder-vlagen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En stelt u noyt <rhyme label="b" type="m">party</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Vermijt de harde <rhyme label="a" type="f" corresp="#s6:l1">slagen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">'t Onweder gaet <rhyme label="b" type="m" corresp="#s6:l2">voor-by</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">De swarte wolck laet <rhyme label="c" type="f">drijven</rhyme></l>
        <l id="s6:l6" met="2" type="+-">Sonder <rhyme label="c" type="f" corresp="#s6:l5">kijven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Heer Bruygom wilt <rhyme label="a" type="f">gedencken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">De Son die u <rhyme label="b" type="m">verheught</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">U tweede ziel wilt <rhyme label="a" type="f" corresp="#s7:l1">schencken</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Geduerigh soete <rhyme label="b" type="m" corresp="#s7:l2">vreught</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En leeft met haer in <rhyme label="c" type="f">vreden</rhyme>,</l>
        <l id="s7:l6" met="2" type="+-">Na de <rhyme label="c" type="f" corresp="#s7:l5">reden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Vrou Bruyt bemint de <rhyme label="a" type="f">Sonne</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die u gestadigh <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die van u is <rhyme label="a" type="f" corresp="#s8:l1">verwonnen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Door Liefde leert u <rhyme label="b" type="m" corresp="#s8:l2">plicht</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Verblijt hem door u <rhyme label="c" type="f">deughde</rhyme>,</l>
        <l id="s8:l6" met="2" type="+-">Met veel <rhyme label="c" type="f" corresp="#s8:l5">vreughde</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wy al te samen <rhyme label="a" type="f">wenschen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Heer Bruydegom en <rhyme label="b" type="m">Bruyt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Dat ghy vereende <rhyme label="a" type="f" corresp="#s9:l1">menschen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">In beyd u Trouringh <rhyme label="b" type="m" corresp="#s9:l2">sluyt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Al wat den Echt doet <rhyme label="c" type="f">bloeyen</rhyme>,</l>
        <l id="s9:l6" met="2" type="+-">Ende <rhyme label="c" type="f" corresp="#s9:l5">groeyen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
