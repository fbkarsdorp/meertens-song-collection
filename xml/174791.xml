<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>174791</id>
    <date>
      <year-start>1861</year-start>
      <year-end>1861</year-end>
    </date>
    <tags>
      <tag standard-name="kinderlied" translation="children's song">kinderlied</tag>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>Daar buiten op de weide</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="children">kinderen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Daarbuiten op de <rhyme label="a" type="f">weide</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gaan lam'ren, klein en <rhyme label="b" type="m">groot</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Zij grazen van den <rhyme label="c" type="f">morgen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Tot aan het <rhyme label="b" type="m" corresp="#s1:l2">avondrood</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Opdat geen leed hen <rhyme label="d" type="f">deren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Geen lam verdwalen <rhyme label="e" type="m">zou</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Bewaakt een wakkre <rhyme label="f" type="f">herder</rhyme></l>
        <l id="s1:l8" met="3" type="-+">De kudde vroom en <rhyme label="e" type="m" corresp="#s1:l6">trouw</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maar meer nog dan de <rhyme label="a" type="f">herder</rhyme></l>
        <l id="s2:l2" met="3" type="-+">De lammerkens <rhyme label="b" type="m">bewaakt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Waakt God voor brave <rhyme label="c" type="f">kindren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat hun geen onheil <rhyme label="b" type="m" corresp="#s2:l2">naakt</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Hij ziet van uit den <rhyme label="d" type="f">Hemel</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Behoedend op ons <rhyme label="e" type="m">neêr</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En als we onwetend <rhyme label="f" type="f">dwalen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Voert hij ten goede ons <rhyme label="e" type="m" corresp="#s2:l6">weêr</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
