    <melody>Och ongelukkige dag</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Soo wie met aandagt <rhyme label="a" type="m">merkt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Al wat de liefde <rhyme label="a" type="m" corresp="#s1:l1">werkt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hoe zy van deugd in deugd <rhyme label="a" type="m" corresp="#s1:l1">versterkt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die krijgt met eenen klaar <rhyme label="b" type="m">bescheid</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Van waare liefds <rhyme label="b" type="m" corresp="#s1:l4">hoedaanigheid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De liefde niet en <rhyme label="a" type="m">let</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Op een bepaalde <rhyme label="a" type="m" corresp="#s2:l1">wet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Of op de straf van God <rhyme label="a" type="m" corresp="#s2:l1">gezet</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Maar liefd' is zelfs de wet en <rhyme label="b" type="m">maat</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Van aller Christ'nen doen en <rhyme label="b" type="m" corresp="#s2:l4">laat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Daar liefde zal <rhyme label="a" type="m">gebie'n</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daar moet de vreeze <rhyme label="a" type="m" corresp="#s3:l1">vlie'n</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En alles vrooijelijk <rhyme label="a" type="m" corresp="#s3:l1">geschie'n</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">De liefd' doet willig, wat zy <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En Christus jok dat valt haar <rhyme label="b" type="m" corresp="#s3:l4">zoet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De liefd' is vol <rhyme label="a" type="m">lang-moed</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Zeer vriendelijk en <rhyme label="a" type="m" corresp="#s4:l1">goed</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Zy haakt naa niemands <rhyme label="a" type="m" corresp="#s4:l1">teegen-spoed</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Af-gunst de liefde <rhyme label="b" type="m">weeder-strijd</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">De liefde niemand niet <rhyme label="b" type="m" corresp="#s4:l4">benijd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">z' Is ongeveinsd, <rhyme label="a" type="m">op-regt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Mee-waardig, needrig, <rhyme label="a" type="m" corresp="#s5:l1">slegt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Geen stoute trotzheid aan haar <rhyme label="a" type="m" corresp="#s5:l1">hegt</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">Geen idel eere zy <rhyme label="b" type="m">bejaagd</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Maar eerlijk zy haar zelven <rhyme label="b" type="m" corresp="#s5:l4">draagd</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Zy liefd geen <rhyme label="a" type="m">eigen-baat</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Zy denkt geen arg nog <rhyme label="a" type="m" corresp="#s6:l1">quaad</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Nog draagd op Mensch ter Weereld <rhyme label="a" type="m" corresp="#s6:l1">haat</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Door gramschap word zy niet <rhyme label="b" type="m">vervoerd</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Nog toornigheid het hert <rhyme label="b" type="m" corresp="#s6:l4">ontroerd</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zy heeft geenzins <rhyme label="a" type="m">geneugt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In onregt, maar in <rhyme label="a" type="m" corresp="#s7:l1">deugd</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En waarheid is 't, die haar <rhyme label="a" type="m" corresp="#s7:l1">verheugd</rhyme>;</l>
        <l id="s7:l4" met="4" type="-+">'t Zy lief, of leed, 't zy zoet, of <rhyme label="b" type="m">zuur</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Zy draagd en duld haar <rhyme label="b" type="m" corresp="#s7:l4">avontuur</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">De liefd' is <rhyme label="a" type="m">zonderling</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zy geloofd zeer <rhyme label="a" type="m" corresp="#s8:l1">gering</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">De liefde hoopt tog alle <rhyme label="a" type="m" corresp="#s8:l1">ding</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Zy lijd, zy draagd een yder <rhyme label="b" type="m">Mensch</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">En 's naasten heil is haaren <rhyme label="b" type="m" corresp="#s8:l4">wensch</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Zy troost die zijn <rhyme label="a" type="m">bedroef</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Zy helpt die hulp <rhyme label="a" type="m" corresp="#s9:l1">behoefd</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">In wel te doen zy niet <rhyme label="a" type="m" corresp="#s9:l1">vertoefd</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Zy doet een ander anders <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Dan zoo zy wil dat har <rhyme label="b" type="m" corresp="#s9:l4">geschied</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Zy wandeld hier op <rhyme label="a" type="m">aard'</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Maar oogd ten Heemel <rhyme label="a" type="m" corresp="#s10:l1">waard'</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Tot God, uit wien zy is <rhyme label="a" type="m" corresp="#s10:l1">gebaard</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Uit wien zy haaren oorsprong <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">In wien zy eeuwig, eeuwig <rhyme label="b" type="m" corresp="#s10:l4">leefd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
