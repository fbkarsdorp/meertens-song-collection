  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DRuck, lyden en <rhyme label="a" type="f">ellende</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Is den mensche op <rhyme label="b" type="m">geleyt</rhyme></l>
        <l id="s1:l3" met="4" type="+-">maer alle kruys dat heeft een <rhyme label="a" type="f" corresp="#s1:l1">ende</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Hoe wel dat niet haest en <rhyme label="b" type="m" corresp="#s1:l2">scheyt</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Al gaet het toe met swaer <rhyme label="b" type="m" corresp="#s1:l2">arbeyt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Ghy moet u schicken na den <rhyme label="b" type="m" corresp="#s1:l2">tijt</rhyme></l>
        <l id="s1:l7" met="4" type="+-">U ziele besitten met <rhyme label="b" type="m" corresp="#s1:l2">lijtsaemheyt</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Want de Heere die comt <rhyme label="b" type="m" corresp="#s1:l2">subijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als nu sal comen de <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">(Dit dient menichmael <rhyme label="b" type="m">bedacht</rhyme>)</l>
        <l id="s2:l3" met="4" type="+-">Dan sal alle druck <rhyme label="a" type="f" corresp="#s2:l1">verkeren</rhyme></l>
        <l id="s2:l4" met="4" type="+-">In een blijschap groot <rhyme label="b" type="m" corresp="#s2:l2">geacht</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Ja in volcomender <rhyme label="b" type="m" corresp="#s2:l2">kracht</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Sult ghy dan wesen <rhyme label="b" type="m" corresp="#s2:l2">verblijt</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Aldus op sijn toecomste <rhyme label="b" type="m" corresp="#s2:l2">wacht</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Want de Heere die comt <rhyme label="b" type="m" corresp="#s2:l2">subijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">De cruycen zijn <rhyme label="a" type="f">menigerhande</rhyme></l>
        <l id="s3:l2" met="4" type="+-">D' eene swaer en d' ander <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Draecht u cloeck als de <rhyme label="a" type="f" corresp="#s3:l1">vailjande</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Sijt getrouwe totter <rhyme label="b" type="m" corresp="#s3:l2">doot</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Want de Heere helpt in <rhyme label="b" type="m" corresp="#s3:l2">noot</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Overwinnen inden <rhyme label="b" type="m" corresp="#s3:l2">strijt</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Aldus en vreest voor geenen <rhyme label="b" type="m" corresp="#s3:l2">stoot</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Want de Heere die komt <rhyme label="b" type="m" corresp="#s3:l2">subijt</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dat kruys is van God <rhyme label="a" type="f">ghegheven</rhyme></l>
        <l id="s4:l2" met="4" type="+-">En laet u niet wesen <rhyme label="b" type="m">zwaer</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Alle straffe hier <rhyme label="a" type="f" corresp="#s4:l1">beneven</rhyme></l>
        <l id="s4:l4" met="4" type="+-">En wort niet aenghesien <rhyme label="b" type="m" corresp="#s4:l2">voorwaer</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Voor een blyde dinck, dits <rhyme label="b" type="m" corresp="#s4:l2">klaer</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Soo ons Paulus <rhyme label="b" type="m" corresp="#s4:l2">belijt</rhyme></l>
        <l id="s4:l7" met="4" type="+-">maer vreucht salse geven hier <rhyme label="b" type="m" corresp="#s4:l2">naer</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Want de Heere die comt <rhyme label="b" type="m" corresp="#s4:l2">subijt</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Job en Tobias <rhyme label="a" type="f">verkooren</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Hadden Kruys met <rhyme label="b" type="m">overvloet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Sulcke exempels sijn ons <rhyme label="a" type="f" corresp="#s5:l1">vooren</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Twelck in onsen druck <rhyme label="b" type="m" corresp="#s5:l2">versoet</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Dus en sijt niet kleene <rhyme label="b" type="m" corresp="#s5:l2">ghemoet</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Al zijt ghy tkruys hier selden <rhyme label="b" type="m" corresp="#s5:l2">quijt</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Maer sijt ghetroost int <rhyme label="b" type="m" corresp="#s5:l2">teghenspoedt</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Want de Heere die comt <rhyme label="b" type="m" corresp="#s5:l2">subijt</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Elias en dient niet <rhyme label="a" type="f">vergeten</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Wat een kruys dat hy <rhyme label="b" type="m">verdroech</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Van al die valsche <rhyme label="a" type="f" corresp="#s6:l1">Propheten</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Die hem quelden spade en <rhyme label="b" type="m" corresp="#s6:l2">vroech</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Wie dat handt slaet aen den <rhyme label="b" type="m" corresp="#s6:l2">Ploegh</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Die sal hier worden <rhyme label="b" type="m" corresp="#s6:l2">benijt</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Dus schept hier in troost <rhyme label="b" type="m" corresp="#s6:l2">genoech</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Want de Heere die comt <rhyme label="b" type="m" corresp="#s6:l2">subijt</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dat Kruys dat placht eertijts te <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Met Vyer, Water, en deurt <rhyme label="b" type="m">Swaert</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Maer nu de Heere zy <rhyme label="a" type="f" corresp="#s7:l1">ghepresen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Die dat van ons heeft <rhyme label="b" type="m" corresp="#s7:l2">gheweert</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Dat hem een yder <rhyme label="b" type="m" corresp="#s7:l2">gheneert</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Om te doene zijn <rhyme label="b" type="m" corresp="#s7:l2">profijt</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Dus wat u toecomt <rhyme label="b" type="m" corresp="#s7:l2">aenveert</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Want de Heere die komt <rhyme label="b" type="m" corresp="#s7:l2">subijt</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Sommige hebbent kruys <rhyme label="a" type="f">inwendig</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Och! hy weet soo wel diet <rhyme label="b" type="m">proeft</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Satan die is seer <rhyme label="a" type="f" corresp="#s8:l1">behendich</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Die noch dach noch nacht en <rhyme label="b" type="m" corresp="#s8:l2">toeft</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Om dat men hem niet en <rhyme label="b" type="m" corresp="#s8:l2">behoeft</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Daerom quelt hy ons uyt <rhyme label="b" type="m" corresp="#s8:l2">spijt</rhyme></l>
        <l id="s8:l7" met="4" type="+-">Aldus u niet seer en <rhyme label="b" type="m" corresp="#s8:l2">bedroeft</rhyme></l>
        <l id="s8:l8" met="4" type="+-">Want de Heere die komt <rhyme label="b" type="m" corresp="#s8:l2">subijt</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Sommige hebbent kruys der <rhyme label="a" type="f">questen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Dickwils in haer eygen <rhyme label="b" type="m">Huys</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Elck ander niet houden ten <rhyme label="a" type="f" corresp="#s9:l1">besten</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Daer uyt komt een groot <rhyme label="b" type="m" corresp="#s9:l2">confuys</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Och! is dat niet een zwaer <rhyme label="b" type="m" corresp="#s9:l2">kruys</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Daer deene dander wat <rhyme label="b" type="m" corresp="#s9:l2">verwijt</rhyme>?</l>
        <l id="s9:l7" met="4" type="+-">Elc wacht hem wel voor zulck <rhyme label="b" type="m" corresp="#s9:l2">abuys</rhyme></l>
        <l id="s9:l8" met="4" type="+-">Want de Heere die comt <rhyme label="b" type="m" corresp="#s9:l2">subijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Sommige hebbent cruys <rhyme label="a" type="f">voldrucken</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Inde kinders die hy <rhyme label="b" type="m">wint</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Dat het haer niet en wil <rhyme label="a" type="f" corresp="#s10:l1">gelucken</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Worden vleesschelyck <rhyme label="b" type="m" corresp="#s10:l2">ghesint</rhyme></l>
        <l id="s10:l5" met="4" type="+-">maer haer in haer Jeucht <rhyme label="b" type="m" corresp="#s10:l2">bemint</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">En by matigheydt <rhyme label="b" type="m" corresp="#s10:l2">kastijt</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Op dat ghy namaels vreuchde <rhyme label="b" type="m" corresp="#s10:l2">vindt</rhyme></l>
        <l id="s10:l8" met="4" type="+-">Want de Heere die comt <rhyme label="b" type="m" corresp="#s10:l2">subijt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Prince soude ickt al <rhyme label="a" type="f">vertellen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">En noemen de kruyssen <rhyme label="b" type="m">al</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Hier in en soude ickt niet <rhyme label="a" type="f" corresp="#s11:l1">ghestellen</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Die daer sijn int aertsche <rhyme label="b" type="m" corresp="#s11:l2">dal</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Laet ons gaen door den wegh <rhyme label="b" type="m" corresp="#s11:l2">smal</rhyme></l>
        <l id="s11:l6" met="4" type="+-">En de Heere vreesen met <rhyme label="b" type="m" corresp="#s11:l2">vlijt</rhyme></l>
        <l id="s11:l7" met="4" type="+-">Dat kruys haest een eynde nemen <rhyme label="b" type="m" corresp="#s11:l2">sal</rhyme></l>
        <l id="s11:l8" met="4" type="+-">Want de Heere die comt <rhyme label="b" type="m" corresp="#s11:l2">subijt</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
