    <melody>Phyllis gij vlucht</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">O Blyden <rhyme label="a" type="m">Wyn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gy doet in ons <rhyme label="b" type="f">verdwynen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Melancolike <rhyme label="b" type="f" corresp="#s1:l2">pynen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Gy doet droeve vrolyck <rhyme label="a" type="m" corresp="#s1:l1">zyn</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">O blyde <rhyme label="c" type="m">vrucht</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">'t Ghesucht dat <rhyme label="c" type="m" corresp="#s1:l5">vlucht</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Door u <rhyme label="d" type="m">wellust</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Vreught, en <rhyme label="c" type="m" corresp="#s1:l5">ghenucht</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Gy ontsteckt het vier van <rhyme label="e" type="f">binnen</rhyme></l>
        <l id="s1:l10" met="2" type="+-">Van de <rhyme label="f" type="m">min</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">In ons hert en onsen <rhyme label="f" type="m" corresp="#s1:l10">sin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Danst ende <rhyme label="a" type="m">springht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Salustigh maeckt <rhyme label="b" type="f">coragi'</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zytvrolyck swaren <rhyme label="b" type="f" corresp="#s2:l2">pagi'</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Drinckt en <rhyme label="a" type="m" corresp="#s2:l1">schinckt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">En singht en <rhyme label="c" type="m">klinckt</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Schouwt als de <rhyme label="c" type="m" corresp="#s2:l5">Pest</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">En als de <rhyme label="d" type="m">doodt</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Melankoli' soo swaer als <rhyme label="c" type="m" corresp="#s2:l5">loot</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Wilt af-spoelen en <rhyme label="e" type="f">verdrincken</rhyme></l>
        <l id="s2:l10" met="2" type="+-">In den <rhyme label="f" type="m">Wyn</rhyme></l>
        <l id="s2:l11" met="4" type="+-">Al u quellingh ende <rhyme label="f" type="m" corresp="#s2:l10">pyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">g'En sult daer <rhyme label="a" type="m">naer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">In al den tydt naer <rhyme label="b" type="f">desen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Noyt jongher vrolyck <rhyme label="b" type="f" corresp="#s3:l2">wesen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Daerom <rhyme label="a" type="m" corresp="#s3:l1">nemt</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Den tydt wel <rhyme label="c" type="m">waer</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Het is nu <rhyme label="c" type="m" corresp="#s3:l5">tydt</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Van <rhyme label="d" type="m">vrolyckheydt</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Bedryft ghenucht, En zyt <rhyme label="c" type="m" corresp="#s3:l5">verblydt</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">Want wat kan daer soeter <rhyme label="e" type="f">wesen</rhyme></l>
        <l id="s3:l10" met="2" type="+-">Voor de <rhyme label="f" type="m">Jeught</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Als reyn vreugt in eer en <rhyme label="f" type="m" corresp="#s3:l10">deugt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
