    <melody>Psalm 006 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IK heb nu eens <rhyme label="a" type="f">gevonden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Een Balzem voor myn <rhyme label="a" type="f" corresp="#s1:l1">wonden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Een middel voor myn <rhyme label="b" type="m">smert</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">God door zyn Zoon <rhyme label="c" type="f">bewogen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die slaat op my zyn <rhyme label="c" type="f" corresp="#s1:l4">ogen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En treft my in het <rhyme label="b" type="m" corresp="#s1:l3">hert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zyn Ligt komt my <rhyme label="a" type="f">beschynen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En doet de nagt <rhyme label="a" type="f" corresp="#s2:l1">verdwynen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hy geeft my vollen <rhyme label="b" type="m">wensch</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hy komt om my te <rhyme label="c" type="f">helpen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En myn gants <rhyme label="c" type="f" corresp="#s2:l4">overstelpen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ja God woont by den <rhyme label="b" type="m" corresp="#s2:l3">Mensch</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ik zie dien hoog <rhyme label="a" type="f">geprezen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Nu in zyn eigen <rhyme label="a" type="f" corresp="#s3:l1">wezen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ag! wat een zoet <rhyme label="b" type="m">vermaak</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Dewyl ik zelfs op <rhyme label="c" type="f">heden</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Nu zyn <rhyme label="c" type="f" corresp="#s3:l4">bevalligheden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En zie, en voel, en <rhyme label="b" type="m" corresp="#s3:l3">smaak</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den opslag van zyn <rhyme label="a" type="f">Ogen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Heeft straks myn Hert <rhyme label="a" type="f" corresp="#s4:l1">bewogen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ã´ Goddelyke <rhyme label="b" type="m">straal</rhyme>!</l>
        <l id="s4:l4" met="3" type="-+">De Zon met al haar <rhyme label="c" type="f">luister</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Is by U klaarheit <rhyme label="c" type="f" corresp="#s4:l4">duister</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Gy schoonder <rhyme label="b" type="m" corresp="#s4:l3">duizentmaal</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gy steelt myn hert en <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Gy dwingt in'uw te <rhyme label="a" type="f" corresp="#s5:l1">beminnen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gy doet myn zoet <rhyme label="b" type="m">gewelt</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">U Ogen zyn als <rhyme label="c" type="f">schigten</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ay myn! 'k zal moeten <rhyme label="c" type="f" corresp="#s5:l4">swigten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Van U ter neer <rhyme label="b" type="m" corresp="#s5:l3">gevelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Al wat u kon <rhyme label="a" type="f">verbeelden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Zeer wyt van u ook <rhyme label="a" type="f" corresp="#s6:l1">scheelden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ten was niet als <rhyme label="b" type="m">copy</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Dit kan ons niet <rhyme label="c" type="f">ontdekken</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Die overschone <rhyme label="c" type="f" corresp="#s6:l4">trekken</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ten hadde daar niet <rhyme label="b" type="m" corresp="#s6:l3">by</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hier boven in de <rhyme label="a" type="f">Wolken</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hier in de diepe <rhyme label="a" type="f" corresp="#s7:l1">Kolken</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Zie ik zyn zoet <rhyme label="b" type="m">Aanschyn</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Maar 't moet ook voor hem <rhyme label="c" type="f">wyken</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">'t En kan naar hem niet <rhyme label="c" type="f" corresp="#s7:l4">lyken</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Haar schoonheit valt te <rhyme label="b" type="m" corresp="#s7:l3">klein</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ik hoor 't Gevogelt <rhyme label="a" type="f">quelen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Met duizenden van <rhyme label="a" type="f" corresp="#s8:l1">kelen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En pryzen die haar <rhyme label="b" type="m">schiep</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Ik zie in haar zyn <rhyme label="c" type="f">goetheit</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Zyn uitgestorte <rhyme label="c" type="f" corresp="#s8:l4">zoetheit</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">In haar oneindig <rhyme label="b" type="m" corresp="#s8:l3">diep</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">En al wat in der <rhyme label="a" type="f">Aarden</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Mogt zyn van groter <rhyme label="a" type="f" corresp="#s9:l1">waarden</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Haar kostelyk <rhyme label="b" type="m">Metaal</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Haar planten, kruiden, <rhyme label="c" type="f">bloemen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Hoor ik haar Schepper <rhyme label="c" type="f" corresp="#s9:l4">roemen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En spreken in haar <rhyme label="b" type="m" corresp="#s9:l3">taal</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Hoe wys en hoe <rhyme label="a" type="f">lankmoedig</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Hoe vol, hoe <rhyme label="a" type="f" corresp="#s10:l1">overvloedig</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Hoe heerlyk, hoe <rhyme label="b" type="m">volmaakt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Hy heeft het myn <rhyme label="c" type="f">bewezen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Hy heeft myn Ziel <rhyme label="c" type="f" corresp="#s10:l4">genezen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Hy heeft myn <rhyme label="b" type="m" corresp="#s10:l3">aangeraakt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Myn Ziel die wort schier <rhyme label="a" type="f">dronken</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Hy heeft myn <rhyme label="a" type="f" corresp="#s11:l1">ingeschonken</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Zyn Wyn en ook zyn <rhyme label="b" type="m">Melk</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">'t Is Nectar op myn <rhyme label="c" type="f">tongen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Myn hert als <rhyme label="c" type="f" corresp="#s11:l4">onbedwongen</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Roept wat een zoeter <rhyme label="b" type="m" corresp="#s11:l3">Kelk</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Ik ben ook niet <rhyme label="a" type="f">bedrogen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Ik zie hem met myn <rhyme label="a" type="f" corresp="#s12:l1">ogen</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Ik rust nu in zyn <rhyme label="b" type="m">schoot</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Ik kan myn zelfs niet <rhyme label="c" type="f">vinden</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Ik laat myn maar <rhyme label="c" type="f" corresp="#s12:l4">verslinden</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Van deze zoete <rhyme label="b" type="m" corresp="#s12:l3">doot</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Ik kan niets meer <rhyme label="a" type="f">begeren</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">En niets zal my <rhyme label="a" type="f" corresp="#s13:l1">ontberen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Want ik bezit het <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Dit zal myn niet <rhyme label="c" type="f">begeven</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Nog in 't toekomend' <rhyme label="c" type="f" corresp="#s13:l4">leven</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Nog in dit <rhyme label="b" type="m" corresp="#s13:l3">Tranendal</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Wie kan die liefde <rhyme label="a" type="f">blussen</rhyme>?</l>
        <l id="s14:l2" met="3" type="-+">Hy geeft myn kus op <rhyme label="a" type="f" corresp="#s14:l1">kussen</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">'t Is Oly in de <rhyme label="b" type="m">vlam</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Hy zag niet op myn <rhyme label="c" type="f">zonden</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Doen hy myn Hert quam <rhyme label="c" type="f" corresp="#s14:l4">wonden</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">En daar zyn woon-plaats <rhyme label="b" type="m" corresp="#s14:l3">nam</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Ik hout myn nu gants <rhyme label="a" type="f">stille</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Ik buig myn naar zyn <rhyme label="a" type="f" corresp="#s15:l1">wille</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">En al wat hem <rhyme label="b" type="m">behaagt</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Dewyl ik niets kan <rhyme label="c" type="f">werken</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Ten zy hy myn komt <rhyme label="c" type="f" corresp="#s15:l4">sterken</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Dat doet hy <rhyme label="b" type="m" corresp="#s15:l3">ongevraagt</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Den Afgront van myn <rhyme label="a" type="f">zonden</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Dien had myn schier <rhyme label="a" type="f" corresp="#s16:l1">verslonden</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Den afgront van zyn <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Die trok myn uit de <rhyme label="c" type="f">poelen</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Nu leef ik by <rhyme label="c" type="f" corresp="#s16:l4">gevoelen</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Hy trekt myn tot zig <rhyme label="b" type="m" corresp="#s16:l3">in</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Ik sterf daar, en ik leef <rhyme label="a" type="f">daar</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Ik vlieg daar en ik sweef <rhyme label="a" type="f" corresp="#s17:l1">daar</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Ã´ Wonderlyk <rhyme label="b" type="m">plaizier</rhyme>!</l>
        <l id="s17:l4" met="3" type="-+">Wie kan dit tog <rhyme label="c" type="f">bevatten</rhyme>?</l>
        <l id="s17:l5" met="3" type="-+">Ja al des Werelts <rhyme label="c" type="f" corresp="#s17:l4">schatten</rhyme>,</l>
        <l id="s17:l6" met="3" type="-+">Die agt ik niet een <rhyme label="b" type="m" corresp="#s17:l3">zier</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Ik kan geen woorden <rhyme label="a" type="f">vinden</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Myn Schone, myn <rhyme label="a" type="f" corresp="#s18:l1">Beminden</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Hoe zoet als Hemels <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Gy waart het die myn <rhyme label="c" type="f">schaakten</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">Myn Duive, myn <rhyme label="c" type="f" corresp="#s18:l4">Volmaakten</rhyme>,</l>
        <l id="s18:l6" met="3" type="-+">Myn Bruidegom en <rhyme label="b" type="m" corresp="#s18:l3">Man</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Gy kust en gy om-armt <rhyme label="a" type="f">my</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Gy koestert, en verwarmt <rhyme label="a" type="f" corresp="#s19:l1">my</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Ik mag nu by u <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">'k Ben in u Beelt <rhyme label="c" type="f">verborgen</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Ik rust nu vry van <rhyme label="c" type="f" corresp="#s19:l4">zorgen</rhyme>,</l>
        <l id="s19:l6" met="3" type="-+">Want Jezus is ook <rhyme label="b" type="m" corresp="#s19:l3">myn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
