  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-"><rhyme label="a" type="m">ZEvenmael</rhyme>//</l>
        <l id="s1:l2" met="3" type="-+">Na Saalmons wijse <rhyme label="a" type="m" corresp="#s1:l1">tael</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Des daegs, valt een <rhyme label="b" type="f">rechtveerdig</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Menschelijk <rhyme label="c" type="m">bekoord</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Door gedacht, of werk, of <rhyme label="c" type="m" corresp="#s1:l4">woord</rhyme></l>
        <l id="s1:l6" met="2" type="+-"><rhyme label="d" type="m">Evenwel</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Weerstaende, dood en <rhyme label="d" type="m" corresp="#s1:l6">hel</rhyme></l>
        <l id="s1:l8" met="3" type="-+">En blijvende noch <rhyme label="b" type="f" corresp="#s1:l3">waerdig</rhyme></l>
        <l id="s1:l9" met="3" type="+-">D’eer-naem van een <rhyme label="e" type="m">vrind</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Ia Gods uyt-verkoren <rhyme label="e" type="m" corresp="#s1:l9">kind</rhyme></l>
        <l id="s1:l11" met="2" type="+-">Daer over hy <rhyme label="f" type="m">met</rhyme></l>
        <l id="s1:l12" met="2" type="-+">Ootmoedig <rhyme label="f" type="m" corresp="#s1:l11">gebed</rhyme></l>
        <l id="s1:l13" met="2" type="+-">Vroeg en <rhyme label="g" type="m">laet</rhyme></l>
        <l id="s1:l14" met="4" type="+-">Roept, vergeeft my mijn <rhyme label="g" type="m" corresp="#s1:l13">misdaed</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Waer’s de <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die noyt deur woord en <rhyme label="a" type="m" corresp="#s2:l1">viel</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Doch, waer is zulk te <rhyme label="b" type="f">vinden</rhyme>?</l>
        <l id="s2:l4" met="3" type="+-">Zeeker z’ is <rhyme label="c" type="m">volmaekt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Die tot zulken deugd <rhyme label="c" type="m" corresp="#s2:l4">geraekt</rhyme>.</l>
        <l id="s2:l6" met="2" type="+-">Maer, <rhyme label="d" type="m">helaes</rhyme>!</l>
        <l id="s2:l7" met="3" type="-+">’t Bekorelijkke <rhyme label="d" type="m" corresp="#s2:l6">aes</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Des werelds, en der <rhyme label="b" type="f" corresp="#s2:l3">vrinden</rhyme></l>
        <l id="s2:l9" met="3" type="+-">Dringt het kranke <rhyme label="e" type="m">vleisch</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Tot gebreken, reys op <rhyme label="e" type="m" corresp="#s2:l9">reys</rhyme>.</l>
        <l id="s2:l11" met="2" type="+-">Wy zondigen <rhyme label="f" type="m">all</rhyme>’</l>
        <l id="s2:l12" met="2" type="-+">End’ zoo wie van <rhyme label="f" type="m" corresp="#s2:l11">val</rhyme></l>
        <l id="s2:l13" met="2" type="+-">Zich <rhyme label="g" type="m">verschoont</rhyme></l>
        <l id="s2:l14" met="4" type="+-">Hem een leugenaer <rhyme label="g" type="m" corresp="#s2:l13">betoondt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Aldus <rhyme label="a" type="m">sprak</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ioan, die noyt en <rhyme label="a" type="m" corresp="#s3:l1">stak</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dan nae zijns meesters <rhyme label="b" type="f">minne</rhyme>:</l>
        <l id="s3:l4" met="3" type="+-">En daerom <rhyme label="c" type="m">bekwaem</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Was tot een zoo hogen <rhyme label="c" type="m" corresp="#s3:l4">naem</rhyme>.</l>
        <l id="s3:l6" met="2" type="+-">Wasser <rhyme label="d" type="m">dan</rhyme></l>
        <l id="s3:l7" met="3" type="-+">In zulken waerden <rhyme label="d" type="m" corresp="#s3:l6">man</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Noch iet gebreks te <rhyme label="b" type="f" corresp="#s3:l3">vinnen</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Zoo’n kon sulks <rhyme label="e" type="m">voorwaer</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Inder daed niet wezen <rhyme label="e" type="m" corresp="#s3:l9">zwaer</rhyme>.</l>
        <l id="s3:l11" met="2" type="+-">Volgt dan hier <rhyme label="f" type="m">uit</rhyme>,</l>
        <l id="s3:l12" met="2" type="-+">Met noodig <rhyme label="f" type="m" corresp="#s3:l11">besluit</rhyme>,</l>
        <l id="s3:l13" met="2" type="+-">Datter <rhyme label="g" type="m">maet</rhyme></l>
        <l id="s3:l14" met="4" type="+-">Is van meer, en minder <rhyme label="g" type="m" corresp="#s3:l13">quaed</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Vougt hier <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Tot meerder blijks, noch <rhyme label="a" type="m" corresp="#s4:l1">by</rhyme></l>
        <l id="s4:l3" met="3" type="-+">De drie verscheyde <rhyme label="b" type="f">graden</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Van bestemde <rhyme label="c" type="m">boet</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Over een vergramd <rhyme label="c" type="m" corresp="#s4:l4">gemoed</rhyme>.</l>
        <l id="s4:l6" met="2" type="+-">Daer van <rhyme label="d" type="m">dat</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Het eerst, en’t tweede <rhyme label="d" type="m" corresp="#s4:l6">had</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Het oordeel, en den <rhyme label="b" type="f" corresp="#s4:l3">rade</rhyme></l>
        <l id="s4:l9" met="3" type="+-">Te verwachten; <rhyme label="e" type="m">maer</rhyme></l>
        <l id="s4:l10" met="4" type="+-">’t Leste seyt, het helsch <rhyme label="e" type="m" corresp="#s4:l9">gevaer</rhyme>.</l>
        <l id="s4:l11" met="2" type="+-">Een klaer <rhyme label="f" type="m">argument</rhyme>,</l>
        <l id="s4:l12" met="2" type="-+">Daer ider aen <rhyme label="f" type="m" corresp="#s4:l11">kendt</rhyme></l>
        <l id="s4:l13" met="2" type="+-">Dat den <rhyme label="g" type="m">Heer</rhyme></l>
        <l id="s4:l14" met="4" type="+-">Acht de zonde min, en <rhyme label="g" type="m" corresp="#s4:l13">meer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="+-">d’Eige <rhyme label="a" type="m">zin</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Kan ook noch, nae’k <rhyme label="a" type="m" corresp="#s5:l1">bevin</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Des Heeren woord <rhyme label="b" type="f">betogen</rhyme>;</l>
        <l id="s5:l4" met="3" type="+-">Daer hy, inder <rhyme label="c" type="m">tijd</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Mee versprak den <rhyme label="c" type="m" corresp="#s5:l4">Hypocryt</rhyme>.</l>
        <l id="s5:l6" met="2" type="+-">Veinzer! <rhyme label="d" type="m">wat</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Is’t, zey Heer Iesus, <rhyme label="d" type="m" corresp="#s5:l6">dat</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Ghy in uw’ Broeders <rhyme label="b" type="f" corresp="#s5:l3">oogen</rhyme></l>
        <l id="s5:l9" met="3" type="+-">Een kleyn stofjen <rhyme label="e" type="m">ziet</rhyme></l>
        <l id="s5:l10" met="4" type="+-">End’ in’t uw’ den ballick <rhyme label="e" type="m" corresp="#s5:l9">niet</rhyme>?</l>
        <l id="s5:l11" met="2" type="+-">Door ’t stofjen <rhyme label="f" type="m">verstaet</rhyme></l>
        <l id="s5:l12" met="2" type="-+">Hy ‘t dagelijks <rhyme label="f" type="m" corresp="#s5:l11">quaed</rhyme>;</l>
        <l id="s5:l13" met="2" type="+-">Door den <rhyme label="g" type="m">ballik</rhyme></l>
        <l id="s5:l14" met="4" type="+-">Het doodtelijk mis <rhyme label="g" type="m" corresp="#s5:l13">daed</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="+-">Maer hoe <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s6:l2" met="3" type="-+">De ziel, noch dood, noch <rhyme label="a" type="m" corresp="#s6:l1">hel</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Verdiend door deze <rhyme label="b" type="f">zonden</rhyme>:</l>
        <l id="s6:l4" met="3" type="+-">Zoo moetz’ efter <rhyme label="c" type="m">haer</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Hier in naerstig nemen <rhyme label="c" type="m" corresp="#s6:l4">waer</rhyme>.</l>
        <l id="s6:l6" met="2" type="+-">Want die ’t <rhyme label="d" type="m">kleyn</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Versmaed, komt int <rhyme label="d" type="m" corresp="#s6:l6">gemeyn</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Te vallen inde <rhyme label="b" type="f" corresp="#s6:l3">gronden</rhyme></l>
        <l id="s6:l9" met="3" type="+-">Van de diepste <rhyme label="e" type="m">nood</rhyme>;</l>
        <l id="s6:l10" met="4" type="+-">Daer het kleintje, komt tot <rhyme label="e" type="m" corresp="#s6:l9">groot</rhyme>.</l>
        <l id="s6:l11" met="2" type="+-">Dus waekt, bidt, en <rhyme label="f" type="m">ziet</rhyme></l>
        <l id="s6:l12" met="2" type="-+">Dat de liefde u <rhyme label="f" type="m" corresp="#s6:l11">niet</rhyme></l>
        <l id="s6:l13" met="2" type="+-">En <rhyme label="g" type="m">verkoud</rhyme></l>
        <l id="s6:l14" met="4" type="+-">Door de dagelijkse <rhyme label="g" type="m" corresp="#s6:l13">fout</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
