    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Mijn hertze mijn sin so waer ic <rhyme label="a" type="m">bin</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Anich u minlic vrouwe <rhyme label="b" type="f">gegeven</rhyme></l>
        <l id="s1:l3" met="4" type="-+">In core daer voren geen <rhyme label="a" type="m" corresp="#s1:l1">ghewin</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ende ic yet sonder u soude <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mi en huecht gheen vruecht wes ich <rhyme label="a" type="m">begin</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Als ic u niet mach sijn <rhyme label="b" type="f">beneven</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Ich dinke up anders meer no <rhyme label="a" type="m" corresp="#s2:l1">min</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Eewich sidi in mi <rhyme label="b" type="f" corresp="#s2:l2">ghescreven</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn hertze ende mijn sin so waer ic <rhyme label="a" type="m">bin</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Anich u minlic vrouwe <rhyme label="b" type="f">ghegeven</rhyme></l>
        <l id="s3:l3" met="4" type="-+">In core daer voren geen <rhyme label="a" type="m" corresp="#s3:l1">ghewin</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Ende ic yet sonder u soude <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme></l>
