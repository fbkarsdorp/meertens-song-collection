    <melody>Mijn zoete zusje hoe dus straf</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Komt Dochters, Iongmans, komt hier <rhyme label="a" type="m">t'saem</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">In Iesu Christi soete <rhyme label="a" type="m" corresp="#s1:l1">naem</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die hy ni heeft <rhyme label="b" type="f">verkregen</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Ick weet ghy soeckt een salich <rhyme label="c" type="m">jaer</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">'t Sal u geworden <rhyme label="c" type="m" corresp="#s1:l4">allega'er</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ick ben hier toe <rhyme label="b" type="f" corresp="#s1:l3">genegen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick geef u Iesum uwen <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die nu gekomen is hier <rhyme label="a" type="m" corresp="#s2:l1">ne'er</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Op desen dal der <rhyme label="b" type="f">tranen</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Hoort aen hoe Iesus heeft <rhyme label="c" type="m">geleeft</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Siet wat exempel hy u <rhyme label="c" type="m" corresp="#s2:l4">geeft</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Volght na sijn soet <rhyme label="b" type="f" corresp="#s2:l3">vermanen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit kindt heeft veel voor u <rhyme label="a" type="m">gele'en</rhyme>;</l>
        <l id="s3:l2" met="4" type="-+">Ghy Dochters, Iongmans lijdt met <rhyme label="a" type="m" corresp="#s3:l1">een</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Met Iesus uwen <rhyme label="b" type="f">broeder</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Besnijdt uw le'en, besnijdt u <rhyme label="c" type="m">hart</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Lijdtsamich zijt in druck en <rhyme label="c" type="m" corresp="#s3:l4">smart</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">G'lijck Iesus ons' <rhyme label="b" type="f" corresp="#s3:l3">Behoeder</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Heer Iesus gingh na Godes <rhyme label="a" type="m">Kerck</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Met sijne Ouders, (g'lijck ick <rhyme label="a" type="m" corresp="#s4:l1">merck</rhyme>)</l>
        <l id="s4:l3" met="3" type="-+">In sijne jonge <rhyme label="b" type="f">dagen</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">En als sijn Moeder hem vondt <rhyme label="c" type="m">we'er</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Soo nam sy na de Kerck haer <rhyme label="c" type="m" corresp="#s4:l4">keer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Daer vondts' hem d'Wijse <rhyme label="b" type="f" corresp="#s4:l3">vragen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Volght hier in Iesum ghy oock <rhyme label="a" type="m">na</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Gaet na Godts Tempel vroegh en <rhyme label="a" type="m" corresp="#s5:l1">spa</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Laet u by Iesus <rhyme label="b" type="f">vinden</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">De straten mijdt, de tuynen <rhyme label="c" type="m">mee</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Begeeft u tot dees heyl'ge <rhyme label="c" type="m" corresp="#s5:l4">stee</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dit wenschen uwe <rhyme label="b" type="f" corresp="#s5:l3">vrinden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Na dat ghy hebt Godts-dienst <rhyme label="a" type="m">gehoort</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En Godt Almachtichs heylich <rhyme label="a" type="m" corresp="#s6:l1">Woort</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Gaet dan u vry <rhyme label="b" type="f">vermaecken</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Weest vrolijck dan in <rhyme label="c" type="m">eerlijckheyt</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Weest vrolijck met <rhyme label="c" type="m" corresp="#s6:l4">gestichtigheyt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dat is gheensins te <rhyme label="b" type="f" corresp="#s6:l3">laecken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Uw' Ouders onderdanich <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">G'lijck Iesus oock in sijnen <rhyme label="a" type="m" corresp="#s7:l1">tijdt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Volght uwe Ouders <rhyme label="b" type="f">sinnen</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">G'lijck als ghy groeyt na lijf en <rhyme label="c" type="m">le'en</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Wilt soo in deughden voort oock <rhyme label="c" type="m" corresp="#s7:l4">tre'en</rhyme>;</l>
        <l id="s7:l6" met="3" type="-+">Op heden wilt <rhyme label="b" type="f" corresp="#s7:l3">beginnen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">D'Heer Iesus is u voor <rhyme label="a" type="m">gegaen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ick bidd' u, volght die selfde <rhyme label="a" type="m" corresp="#s8:l1">baen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Soo sult ghy hem <rhyme label="b" type="f">behagen</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Volhart hier in tot uwe <rhyme label="c" type="m">doodt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Soo sult ghy wesen namaels <rhyme label="c" type="m" corresp="#s8:l4">groot</rhyme>;</l>
        <l id="s8:l6" met="3" type="-+">Och of wy dit eens <rhyme label="b" type="f" corresp="#s8:l3">sagen</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Heer Iesu, nieuw besnede <rhyme label="a" type="m">Kindt</rhyme>!</l>
        <l id="s9:l2" met="4" type="-+">Maeckt dat de jonkheyt u <rhyme label="a" type="m" corresp="#s9:l1">bemindt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En navolght uwe <rhyme label="b" type="f">raden</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Ick bidd' u Iesu! door uw' <rhyme label="c" type="m">min</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Brengt haer, en ons den Hemel <rhyme label="c" type="m" corresp="#s9:l4">in</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Wilt eeuwich ons <rhyme label="b" type="f" corresp="#s9:l3">versaden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
