    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">¶ Een blide moet in <rhyme label="a" type="m">tegenspoet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">doet alle liden <rhyme label="b" type="f">wiken</rhyme></l>
        <l id="s1:l3" met="4" type="-+">want hi bekent diet hem toe <rhyme label="c" type="m">sent</rhyme></l>
        <l id="s1:l4" met="3" type="-+">hi sal hem niet <rhyme label="b" type="f" corresp="#s1:l2">beswiken</rhyme></l>
        <l id="s1:l5" met="4" type="-+">want god altoest den genen <rhyme label="d" type="m">troest</rhyme></l>
        <l id="s1:l6" met="3" type="-+">die sijn beuaen mit <rhyme label="e" type="f">liden</rhyme></l>
        <l id="s1:l7" met="4" type="+-">hier om hebt moet in <rhyme label="f" type="m">tegenspoet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">na druc so coemt <rhyme label="e" type="f" corresp="#s1:l6">verbliden</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">¶ Dar left gheen man die mach of <rhyme label="a" type="m">can</rhyme></l>
        <l id="s2:l2" met="3" type="-+">dat liden hier <rhyme label="b" type="f">ontganghen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">al scout oec hijt mit alder <rhyme label="c" type="m">vlijt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">nochtans wert hi <rhyme label="b" type="f" corresp="#s2:l2">gheuanghen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">mer wie ter tijt hier wert <rhyme label="d" type="m">castijt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">ende hem daer in can <rhyme label="e" type="f">liden</rhyme></l>
        <l id="s2:l7" met="4" type="+-">na dit verdriet dat hem <rhyme label="f" type="m">ghesciet</rhyme></l>
        <l id="s2:l8" met="3" type="-+">sal hi in troest <rhyme label="e" type="f" corresp="#s2:l6">verbliden</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">¶ Hi is geuaen wil hijt <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">mit liden vast <rhyme label="b" type="f">ghebonden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">die als ic waen soude <rhyme label="c" type="m">vergaen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">mit vroechd in val der <rhyme label="b" type="f" corresp="#s3:l2">sonden</rhyme></l>
        <l id="s3:l5" met="4" type="-+">mer dat verdriet en henges <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">dat hi dus coemt in <rhyme label="e" type="f">vresen</rhyme></l>
        <l id="s3:l7" met="4" type="+-">ende diat onspoet dat hem <rhyme label="f" type="m">ghemoet</rhyme></l>
        <l id="s3:l8" met="3" type="-+">leert hem voersichtich <rhyme label="e" type="f" corresp="#s3:l6">leuen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">¶ Die dan bekint dat hem god <rhyme label="a" type="m">mint</rhyme></l>
        <l id="s4:l2" met="3" type="-+">dien hi castijt mit <rhyme label="b" type="f">liden</rhyme></l>
        <l id="s4:l3" met="4" type="-+">ende tloen besint ende <rhyme label="c" type="m">ondervint</rhyme></l>
        <l id="s4:l4" met="3" type="-+">wat wil hi dan <rhyme label="b" type="f" corresp="#s4:l2">vermyden</rhyme></l>
        <l id="s4:l5" met="4" type="-+">hier om mit vlijt gaet aen den <rhyme label="d" type="m">strijt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">so moechdi tsegen <rhyme label="e" type="f">winnen</rhyme></l>
        <l id="s4:l7" met="4" type="+-">want wie onspoet lijd mit <rhyme label="f" type="m">oetmoet</rhyme></l>
        <l id="s4:l8" met="3" type="-+">heeft stadich vroechd van <rhyme label="e" type="f" corresp="#s4:l6">binnen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">¶ O mensche goet hier om wes <rhyme label="a" type="m">vroet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">en wilt gheen liden <rhyme label="b" type="f">wiken</rhyme></l>
        <l id="s5:l3" met="4" type="-+">want niemont vri gheloues <rhyme label="c" type="m">mi</rhyme></l>
        <l id="s5:l4" met="3" type="-+">en leuet op <rhyme label="b" type="f" corresp="#s5:l2">artriken</rhyme></l>
        <l id="s5:l5" met="4" type="-+">hier om verdraecht al <rhyme label="d" type="m">onuersaecht</rhyme></l>
        <l id="s5:l6" met="3" type="-+">ende wilt dat wenich <rhyme label="e" type="f">achten</rhyme></l>
        <l id="s5:l7" met="4" type="+-">wortstu gewont in dinen <rhyme label="f" type="m">gront</rhyme></l>
        <l id="s5:l8" met="3" type="-+">iesus salt di <rhyme label="e" type="f" corresp="#s5:l6">versachten</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">¶ Dit self is claer ende <rhyme label="a" type="m">openbaer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">inder scriptur <rhyme label="b" type="f">bewesen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">dat hem gemoet menich <rhyme label="c" type="m">tegenspoet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">die god genaem sal <rhyme label="b" type="f" corresp="#s6:l2">wesen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">want int ghemein den herten <rhyme label="d" type="m">rein</rhyme></l>
        <l id="s6:l6" met="3" type="-+">so veel op valt te <rhyme label="e" type="f">liden</rhyme></l>
        <l id="s6:l7" met="4" type="+-">als dat weldaet van goet in wt dir <rhyme label="f" type="m">quaet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">verwandelt tallen verkint in <rhyme label="e" type="f" corresp="#s6:l6">siden</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">¶ Een trostelic woort heb ic <rhyme label="a" type="m">gehoort</rhyme></l>
        <l id="s7:l2" met="3" type="-+">dat doet mi vrolic <rhyme label="b" type="f">liden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">dat god hier loont ende namaels <rhyme label="c" type="m">croont</rhyme></l>
        <l id="s7:l4" met="3" type="-+">die vromeliken <rhyme label="b" type="f" corresp="#s7:l2">striden</rhyme></l>
        <l id="s7:l5" met="4" type="-+">hier om west vro doet oec <rhyme label="d" type="m">also</rhyme></l>
        <l id="s7:l6" met="3" type="-+">ende laet al <rhyme label="e" type="f">ouergangen</rhyme></l>
        <l id="s7:l7" met="4" type="+-">der vroechden croon int hemels <rhyme label="f" type="m">troon</rhyme></l>
        <l id="s7:l8" met="3" type="-+">salstu daer voer <rhyme label="e" type="f" corresp="#s7:l6">onfanghen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">¶ O lijdsamheit daer is <rhyme label="a" type="m">gheseit</rhyme></l>
        <l id="s8:l2" met="3" type="-+">dat ghi die croen sult <rhyme label="b" type="f">dragen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">die dan sijn scult quijt mit <rhyme label="c" type="m">verdult</rhyme></l>
        <l id="s8:l4" met="3" type="-+">en derf hem niet <rhyme label="b" type="f" corresp="#s8:l2">beclagen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">hier om so lijd een corte <rhyme label="d" type="m">tijd</rhyme></l>
        <l id="s8:l6" met="3" type="-+">ten sal niet ewich <rhyme label="e" type="f">duren</rhyme></l>
        <l id="s8:l7" met="4" type="+-">want god verblijd dien hi <rhyme label="f" type="m">castijt</rhyme></l>
        <l id="s8:l8" met="3" type="-+">lijd vrolic sonder <rhyme label="e" type="f" corresp="#s8:l6">truren</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">¶ Wie tliden vlicht dat hem <rhyme label="a" type="m">aenswicht</rhyme></l>
        <l id="s9:l2" met="3" type="-+">die mach gheen troest <rhyme label="b" type="f">ghewinnen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">noch hi en kent dat <rhyme label="c" type="m">testament</rhyme></l>
        <l id="s9:l4" met="3" type="-+">dat iesus leet uut <rhyme label="b" type="f" corresp="#s9:l2">mynnen</rhyme></l>
        <l id="s9:l5" met="4" type="-+">doen hi ghewont aen tcruce <rhyme label="d" type="m">stont</rhyme></l>
        <l id="s9:l6" met="3" type="-+">loefdhij daer voer te <rhyme label="e" type="f">gheuen</rhyme></l>
        <l id="s9:l7" met="4" type="+-">in deser tijt vreed en <rhyme label="f" type="m">iolijt</rhyme></l>
        <l id="s9:l8" met="3" type="-+">ende namaels teuwigh <rhyme label="e" type="f" corresp="#s9:l6">leuen</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
