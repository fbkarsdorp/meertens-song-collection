  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ZYt eens ten end te <rhyme label="a" type="f">vreden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Soet Beeltjen met myn <rhyme label="b" type="m">smert</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Het is op eene <rhyme label="a" type="f" corresp="#s1:l1">bede</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wt 't diepste van myn <rhyme label="b" type="m" corresp="#s1:l2">hert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Al keert ghy uwe <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Naer ander Minnaers <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Noch blyf ick u <rhyme label="a" type="f" corresp="#s2:l1">beminnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En siet ick kus de <rhyme label="b" type="m" corresp="#s2:l2">roe</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De liefde wilt sich <rhyme label="a" type="f">wreken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En sendt u dese <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Om dat ghy eens soudt <rhyme label="a" type="f" corresp="#s3:l1">spreken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met my in eenen <rhyme label="b" type="m" corresp="#s3:l2">sin</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy laet u hertjen <rhyme label="a" type="f">branden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">In synen soeten <rhyme label="b" type="m">brandt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om my een <rhyme label="a" type="f" corresp="#s4:l1">offerhande</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Te gheven van u <rhyme label="b" type="m" corresp="#s4:l2">handt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Doch strecket u tot <rhyme label="a" type="f">lyden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Het is my teghen <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">V stryden doet my <rhyme label="a" type="f" corresp="#s5:l1">stryden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">V smert is myne <rhyme label="b" type="m" corresp="#s5:l2">smert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
