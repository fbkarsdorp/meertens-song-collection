    <melody>Ik wil naar u alleen verlangen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Met wat snelle wack're <rhyme label="a" type="f">vlercken</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Vroolijck zingend', na de <rhyme label="b" type="m">wercken</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Vliegt de kleine Leeuw'rick <rhyme label="a" type="f" corresp="#s1:l1">op</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En des Heemels hooge <rhyme label="b" type="m" corresp="#s1:l2">top</rhyme>!</l>
        <l id="s1:l5" met="4" type="+-">'t Aerdigh beesje reyt zijn <rhyme label="c" type="f">vleug'len</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En zijn held're stem te <rhyme label="d" type="m">saem</rhyme>:</l>
        <l id="s1:l7" met="4" type="+-">'t Kanse beide niet <rhyme label="c" type="f" corresp="#s1:l5">beteug'len</rhyme>;</l>
        <l id="s1:l8" met="4" type="+-">'t Is hem selfs soo <rhyme label="d" type="m" corresp="#s1:l6">aengenaem</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Is als of het Godt daer <rhyme label="a" type="f">boven</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Hert'lick met sijn soet <rhyme label="b" type="m">gesanck</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Tracht te prijsen en te <rhyme label="a" type="f" corresp="#s2:l1">loven</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">'t Is als of 't hem vrolick <rhyme label="b" type="m" corresp="#s2:l2">danck'</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Om dat hy nu alle <rhyme label="c" type="f">dingen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">In dees' soete <rhyme label="d" type="m">Lente-tijdt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Doet met nieuwe vreugdt <rhyme label="c" type="f" corresp="#s2:l5">ontspringen</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Door de wereldt breedt en <rhyme label="d" type="m" corresp="#s2:l6">wijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Siet het eens de lucht <rhyme label="a" type="f">door-snijden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Vroolick, onbelet en <rhyme label="b" type="m">vry</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">'t Kan sijn kleine hert <rhyme label="a" type="f" corresp="#s3:l1">verwijden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat het onbekommert <rhyme label="b" type="m" corresp="#s3:l2">zy</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">'t Wacht van Godt sijn daeg'licks <rhyme label="c" type="f">voedsel</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Daer het wel meed' is <rhyme label="d" type="m">gepaeit</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Voor hem selfs en voor sijn <rhyme label="c" type="f" corresp="#s3:l5">broedtsel</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Schoon het niet en zaeit of <rhyme label="d" type="m" corresp="#s3:l6">maeit</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Soeckt het sijne spijs op <rhyme label="a" type="f">aerden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">'t Is met soo veel sorgen <rhyme label="b" type="m">niet</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">'t Sal oock nimmer sulcks <rhyme label="a" type="f" corresp="#s4:l1">aenvaerden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Eer het singht sijn <rhyme label="b" type="m" corresp="#s4:l2">morgen-liet</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Sijnen Godt te mogen <rhyme label="c" type="f">singen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">'s Morgens vroegh en al den <rhyme label="d" type="m">dagh</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Gaet hem doch voor alle <rhyme label="c" type="f" corresp="#s4:l5">dingen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Soo men hier bemercken <rhyme label="d" type="m" corresp="#s4:l6">magh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Trage ziel, die heel <rhyme label="a" type="f">onlustigh</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Tot den lof des Heeren <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Op; dit beesje maeckt u <rhyme label="a" type="f" corresp="#s5:l1">lustigh</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">'t Roept, 't is tijd, tijd, tijd, <rhyme label="b" type="m" corresp="#s5:l2">tijd</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Dringt van d'aerd' en d'aerdtsche <rhyme label="c" type="f">dingen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">On-verhindert door de <rhyme label="d" type="m">lucht</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Om uw Schepper lof te <rhyme label="c" type="f" corresp="#s5:l5">singen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Geeft hem uwer loppen <rhyme label="d" type="m" corresp="#s5:l6">vrucht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Maeckt Godts Geest u eenmael <rhyme label="a" type="f">vuurigh</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Neemt wel waer die soete <rhyme label="b" type="m">stond'</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Singhty met hert en mondt <rhyme label="a" type="f" corresp="#s6:l1">geduurigh</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Dan soo langh gy immer <rhyme label="b" type="m" corresp="#s6:l2">kondt</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Even als dit kleine <rhyme label="c" type="f">beestje</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Dat niet weer na d'aerde <rhyme label="d" type="m">tracht</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Als ontsteken is sijn <rhyme label="c" type="f" corresp="#s6:l5">geestje</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">En hem niet beswijckt sijn <rhyme label="d" type="m" corresp="#s6:l6">kracht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Waerom zijt gy oock niet <rhyme label="a" type="f">wacker</rhyme></l>
        <l id="s7:l2" met="4" type="+-">In dees' geestelijcke <rhyme label="b" type="m">Lent</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Daer Godt op ons' herten <rhyme label="a" type="f" corresp="#s7:l1">acker</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Hemelsch vocht en warmte <rhyme label="b" type="m" corresp="#s7:l2">sendt</rhyme>?</l>
        <l id="s7:l5" met="4" type="+-">Daer de droev'ge <rhyme label="c" type="f">winter-vlagen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Van versoeckingh en swaer <rhyme label="d" type="m">kruys</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Heil en <rhyme label="c" type="f" corresp="#s7:l5">blijdschaps-Lente-dagen</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Door Godts gunst ons brengen <rhyme label="d" type="m" corresp="#s7:l6">t'huis</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Waerom veel vergeefsche <rhyme label="a" type="f">sorgen</rhyme>;</l>
        <l id="s8:l2" met="4" type="+-">Waerom doch soo veel <rhyme label="b" type="m">verdriet</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Om d'onseeck're dagh van <rhyme label="a" type="f" corresp="#s8:l1">morgen</rhyme>?</l>
        <l id="s8:l4" met="4" type="+-">Siet gy desen Leeuw'rick <rhyme label="b" type="m" corresp="#s8:l2">niet</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Die, al wat hy heeft van <rhyme label="c" type="f">nooden</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Wacht, met blijdtschap, van den <rhyme label="d" type="m">Heer</rhyme></l>
        <l id="s8:l7" met="4" type="+-">U is sulcks veel meer <rhyme label="c" type="f" corresp="#s8:l5">gebooden</rhyme></l>
        <l id="s8:l8" met="4" type="+-">En Godt sorght voor u veel <rhyme label="d" type="m" corresp="#s8:l6">meer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Hebt vry in 't gebruyck het <rhyme label="a" type="f">aerdtsche</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Maer het Hemelsch in <rhyme label="b" type="m">begeert'</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Voedt uw aendacht en <rhyme label="a" type="f" corresp="#s9:l1">bewaerdtse</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Als uw hert tot Godt sich <rhyme label="b" type="m" corresp="#s9:l2">keer</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Wilt als met dit beestje <rhyme label="c" type="f">strijden</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Wie sich meest opheffen <rhyme label="d" type="m">sal</rhyme>;</l>
        <l id="s9:l7" met="4" type="+-">Wilt met yversucht <rhyme label="c" type="f" corresp="#s9:l5">benijden</rhyme></l>
        <l id="s9:l8" met="4" type="+-">Dir sijn onvermoeit <rhyme label="d" type="m" corresp="#s9:l6">geschal</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Hoort het sonder poos' eens <rhyme label="a" type="f">schallen</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Door de lucht, tot dat het <rhyme label="b" type="m">komt</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Plotslick op der aerden <rhyme label="a" type="f" corresp="#s10:l1">vallen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Zijnd' als tegen danck <rhyme label="b" type="m" corresp="#s10:l2">verstomt</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Poost niet in uw' <rhyme label="c" type="f">Hemel-sangen</rhyme>;</l>
        <l id="s10:l6" met="4" type="+-">Moet gy tegen wil en <rhyme label="d" type="m">danck</rhyme>?</l>
        <l id="s10:l7" met="4" type="+-">Wilt daer na op 't nieuw <rhyme label="c" type="f" corresp="#s10:l5">aenvangen</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Als de Leeuw'rick met sijn <rhyme label="d" type="m" corresp="#s10:l6">sanck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
