    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="politics and history">politiek en geschiedenis</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Laes! wat een ramp en <rhyme label="a" type="m">treur-geval</rhyme>:</l>
        <l id="s1:l2" met="4" type="-+">Dat ik niet licht vergeten <rhyme label="a" type="m" corresp="#s1:l1">sal</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Al leefd’ ik hondert <rhyme label="b" type="f">Iaren</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Neemt dit wel waer, O Maets die <rhyme label="c" type="m">naer</rhyme></l>
        <l id="s1:l5" met="3" type="-+">West-Indjen komt te <rhyme label="b" type="f" corresp="#s1:l3">varen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Een donck’re wolk, een swarte <rhyme label="a" type="m">kaeck</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Heeft onversiens, al ons <rhyme label="a" type="m" corresp="#s2:l1">vermaeck</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">In rouw’ om ver <rhyme label="b" type="f">geslagen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daer wy vry sterck, En kloeck in ’t <rhyme label="c" type="m">werck</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Aan ’t Zouten Eylandt <rhyme label="b" type="f" corresp="#s2:l3">lagen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den achtsten Mey voor <rhyme label="a" type="m">dage-raet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Om Water, sonder denck van <rhyme label="a" type="m" corresp="#s3:l1">quaet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Drie Boots men heene <rhyme label="b" type="f">manden</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Maer onverwacht, Was ’s Vyants <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Daer heym;lijck komen <rhyme label="b" type="f" corresp="#s3:l3">Landen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Vooght van Koning Davids <rhyme label="a" type="m">schuyt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die sagh en borst ten lesten <rhyme label="a" type="m" corresp="#s4:l1">uyt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wat sullen wy gaen <rhyme label="b" type="f">maken</rhyme>?</l>
        <l id="s4:l4" met="4" type="-+">Komt Mannen mee, Wy steecken <rhyme label="c" type="m">t’Zee</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Eer dat wy onklaer <rhyme label="b" type="f" corresp="#s4:l3">raken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wy maeckten Seyl, en wierpen <rhyme label="a" type="m">voort</rhyme></l>
        <l id="s5:l2" met="4" type="-+">De Water-vaten <rhyme label="a" type="m" corresp="#s5:l1">over-boort</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Om beter wegh te <rhyme label="b" type="f">spoeyen</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Dus quamen sy, Bedroeft en <rhyme label="c" type="m">bly</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Weer na de Schepen <rhyme label="b" type="f" corresp="#s5:l3">roepen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Het was gelijck de dagh soo <rhyme label="a" type="m">klaer</rhyme>:</l>
        <l id="s6:l2" met="4" type="-+">Maer een van drien ontsloegh het <rhyme label="a" type="m" corresp="#s6:l1">haer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Voortgaende sonder <rhyme label="b" type="f">schromen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Tot sy te laet, En buyten <rhyme label="c" type="m">raet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ghevangen sijn <rhyme label="b" type="f" corresp="#s6:l3">genomen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Een droeve tieng een groote <rhyme label="a" type="m">scha</rhyme>:</l>
        <l id="s7:l2" met="4" type="-+">Maer noch een grooter quammer <rhyme label="a" type="m" corresp="#s7:l1">na</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Geen Sonne-reys na <rhyme label="b" type="f">desen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Dat ons met wacht, De gantsche <rhyme label="c" type="m">nacht</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">In rep en roer deed’ <rhyme label="b" type="f" corresp="#s7:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Doe Phoebus weer de dagh aen <rhyme label="a" type="m">boot</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En ’t Fort daer op de Wacht af <rhyme label="a" type="m" corresp="#s8:l1">schoot</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ging ’t dapper op een <rhyme label="b" type="f">tieren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Des Vyants tros, Viel uyt het <rhyme label="c" type="m">Bos</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Gelijk verwoede <rhyme label="b" type="f" corresp="#s8:l3">Dieren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sy quamen met een <rhyme label="a" type="m">hevigheyt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Aen vallen, of sy waren <rhyme label="a" type="m" corresp="#s9:l1">breyt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En schoten <rhyme label="b" type="f">onderwijlen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Van boven neer, Met valsch <rhyme label="c" type="m">geweer</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Met snoo vergifte <rhyme label="b" type="f" corresp="#s9:l3">Pijlen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dit duyrde vast ontrent een <rhyme label="a" type="m">uyr</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Wy gaven oock te degen <rhyme label="a" type="m" corresp="#s10:l1">vuyr</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En ’t Fort dat schoot met <rhyme label="b" type="f">Ballen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Van vijf ses pont, Die veel <rhyme label="c" type="m">verwont</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Ter aerde deden <rhyme label="b" type="f" corresp="#s10:l3">vallen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Sy dropen van ter zijden <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dat d’onse goe couragie <rhyme label="a" type="m" corresp="#s11:l1">gaf</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En vry wat deed’ <rhyme label="b" type="f">verluchten</rhyme>:</l>
        <l id="s11:l4" met="4" type="-+">Maer recht daer aen, Dat ’t heel <rhyme label="c" type="m">gedaen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Men hoorde banger <rhyme label="b" type="f" corresp="#s11:l3">suchten</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">De Spanjaers quamen setten <rhyme label="a" type="m">an</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Met noch een vijf ses hondert <rhyme label="a" type="m" corresp="#s12:l1">Man</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Van Wilden en van <rhyme label="b" type="f">Moren</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Ons Volck bedeest En flaeu van <rhyme label="c" type="m">Geest</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Gaf doe de moet <rhyme label="b" type="f" corresp="#s12:l3">verloren</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Sy gingen haer nochtans te <rhyme label="a" type="m">keer</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Hoe wel vergeefs, want langhs soo <rhyme label="a" type="m" corresp="#s13:l1">meer</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Quam ’s Vyandts macht <rhyme label="b" type="f">aen-bossen</rhyme>:</l>
        <l id="s13:l4" met="4" type="-+">’t Fort wierd’ beset En sy <rhyme label="c" type="m">verlet</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Haer stucken meer te <rhyme label="b" type="f" corresp="#s13:l3">lossen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">De slechte toe-stant van ons <rhyme label="a" type="m">Volck</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Verruckt het hert schier uyt sijn <rhyme label="a" type="m" corresp="#s14:l1">kolck</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Door enckel <rhyme label="b" type="f">medelijden</rhyme>:</l>
        <l id="s14:l4" met="4" type="-+">Wy lagen daer En konden <rhyme label="c" type="m">haer</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Ontsetten noch <rhyme label="b" type="f" corresp="#s14:l3">bevrijden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Haer macht was kleyn en ‘t [...] <rhyme label="a" type="m">ontvry</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">De Vyandt lagh ‘er en <rhyme label="a" type="m" corresp="#s15:l1">by</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Te knarsen op sijn <rhyme label="b" type="f">tanden</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Dat haer verdroot: Want uyt de <rhyme label="c" type="m">Vloot</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Was geen ontset voor <rhyme label="b" type="f" corresp="#s15:l3">handen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Den hoogen noodt die dreef haer <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s16:l2" met="4" type="-+">’t Ophangen van een <rhyme label="a" type="m" corresp="#s16:l1">Witte-Vaen</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">En bidden om haer <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">De Vyandt riep, Daer elck na <rhyme label="c" type="m">liep</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Quartier te sullen <rhyme label="b" type="f" corresp="#s16:l3">geven</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Eer dat een Mensch sijn leven <rhyme label="a" type="m">geeft</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Veel liever geeft hy wat hy <rhyme label="a" type="m" corresp="#s17:l1">heeft</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Dat onse Maets oock <rhyme label="b" type="f">deden</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Sy gaven ’t haer Gewillich, <rhyme label="c" type="m">maer</rhyme></l>
        <l id="s17:l5" met="3" type="-+">Het was een valsche <rhyme label="b" type="f" corresp="#s17:l3">vrede</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">’t Moordadigh hart quam voor den <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Dat nu de wraeck van vooren <rhyme label="a" type="m" corresp="#s18:l1">sagh</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Belust op onse <rhyme label="b" type="f">schade</rhyme>:</l>
        <l id="s18:l4" met="4" type="-+">Sy vingen aen, Met doodt te <rhyme label="c" type="m">slaen</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">En daer was geen <rhyme label="b" type="f" corresp="#s18:l3">genade</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">De Tyranny ter selver <rhyme label="a" type="m">plaets</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Was niet te sien aen onse <rhyme label="a" type="m" corresp="#s19:l1">Maets</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Met houwen, slaen en <rhyme label="b" type="f">schieten</rhyme>:</l>
        <l id="s19:l4" met="4" type="-+">Na goet accoort, Soo wreden <rhyme label="c" type="m">moort</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Moet u, o Godt! <rhyme label="b" type="f" corresp="#s19:l3">verdrieten</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Een Schipper die snachts had <rhyme label="a" type="m">gewaekt</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">En sijn Barbier zijn vry <rhyme label="a" type="m" corresp="#s20:l1">geraeckt</rhyme>,</l>
        <l id="s20:l3" met="3" type="-+">Door moedigh <rhyme label="b" type="f">avonturen</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Noch een Konstabel bloot en <rhyme label="c" type="m">naeckt</rhyme>,</l>
        <l id="s20:l5" met="3" type="-+">Met twee-mael ses <rhyme label="b" type="f" corresp="#s20:l3">quetsuren</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Ick vaer alsoo niet meer om <rhyme label="a" type="m">Zout</rhyme>,</l>
        <l id="s21:l2" met="4" type="-+">Dat duyrder komt te staen als <rhyme label="a" type="m" corresp="#s21:l1">Gout</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">En moey’lijck valt te <rhyme label="b" type="f">halen</rhyme>:</l>
        <l id="s21:l4" met="4" type="-+">Ia dat men moet, Met vleysch en <rhyme label="c" type="m">bloet</rhyme>,</l>
        <l id="s21:l5" met="3" type="-+">Ten lesten noch <rhyme label="b" type="f" corresp="#s21:l3">betalen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
