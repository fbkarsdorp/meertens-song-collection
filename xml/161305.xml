  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">d'OPper-wijsheydt die <rhyme label="a" type="f">Formeerde</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Op der <rhyme label="a" type="f" corresp="#s1:l1">Eerde</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'t Edel Menschelijck <rhyme label="b" type="m">geslacht</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En heeft d' Eerste Man en <rhyme label="c" type="f">Vrouwe</rhyme></l>
        <l id="s1:l5" met="2" type="+-">In de <rhyme label="c" type="f" corresp="#s1:l4">Trouwe</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Met sijn eygen handt <rhyme label="b" type="m" corresp="#s1:l3">gebracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Noch op heden werckt de <rhyme label="a" type="f">minne</rhyme></l>
        <l id="s2:l2" met="2" type="+-">In de <rhyme label="a" type="f" corresp="#s2:l1">sinnen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Daer door dat het Wijf, en <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">d'Een aen d'ander gheeft te <rhyme label="c" type="f">smaecken</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Sulck <rhyme label="c" type="f" corresp="#s2:l4">vermaecken</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Als gheen and're gheven <rhyme label="b" type="m" corresp="#s2:l3">kan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dese lust, des Menschen <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s3:l2" met="2" type="+-"><rhyme label="a" type="f" corresp="#s3:l1">In-geschreven</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Doet hem soecken sonder <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Tot hy in 't geval der <rhyme label="c" type="f">Menschen</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Na sijn <rhyme label="c" type="f" corresp="#s3:l4">wenschen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Vindt sijn lieve <rhyme label="b" type="m" corresp="#s3:l3">herten-lust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maer dit soecken en <rhyme label="a" type="f">bejaghen</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Moet eerst <rhyme label="a" type="f" corresp="#s4:l1">draghen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">'t Ooghe-merck van eer en <rhyme label="b" type="m">deught</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Dan sal ons de Trouw eerst <rhyme label="c" type="f">gheven</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Als ons' <rhyme label="c" type="f" corresp="#s4:l4">leven</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Reyne lust, en vaste <rhyme label="b" type="m" corresp="#s4:l3">vreught</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">'t Is een schat van grooter <rhyme label="a" type="f">waerden</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Als op <rhyme label="a" type="f" corresp="#s5:l1">Aerden</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Al de Rijckdom gheeft aen <rhyme label="b" type="m">ons</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat de Nieuw-getrouwde <rhyme label="c" type="f">Jeughde</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Reyne <rhyme label="c" type="f" corresp="#s5:l4">Deughden</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Meughen op het <rhyme label="b" type="m" corresp="#s5:l3">Pluymen-dons</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
