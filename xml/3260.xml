    <melody>Schoonste nimf van het woud</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ach hoe moeyelijck! hoe <rhyme label="a" type="m">zwaar</rhyme>!</l>
        <l id="s1:l2" met="2" type="+-">Valt het <rhyme label="a" type="m" corresp="#s1:l1">haar</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die op ‘s Hemels nauwe <rhyme label="b" type="f">wegen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Wand’len willen, ‘t valt zoo <rhyme label="c" type="m">bang</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Met <rhyme label="c" type="m" corresp="#s1:l4">gedrang</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Word het Hemel-rijck <rhyme label="b" type="f" corresp="#s1:l3">verkregen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Denckt niet ydel werelds <rhyme label="a" type="m">wight</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Dat het <rhyme label="a" type="m" corresp="#s2:l1">licht</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Zonder moeyte word <rhyme label="b" type="f">bekomen</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Stormen moet men als een <rhyme label="c" type="m">Helt</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Met <rhyme label="c" type="m" corresp="#s2:l4">gewelt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Want zo word het <rhyme label="b" type="f" corresp="#s2:l3">ingenomen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hier en geld geen laffe <rhyme label="a" type="m">zught</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">In de <rhyme label="a" type="m" corresp="#s3:l1">lucht</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Neen, ‘t word strijdende <rhyme label="b" type="f">verkregen</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">‘t Koninckrijcke Gods <rhyme label="c" type="m">bestaat</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Niet in <rhyme label="c" type="m" corresp="#s3:l4">praat</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Maar het is in kracht <rhyme label="b" type="f" corresp="#s3:l3">gelegen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Meentje dan verdwaasde <rhyme label="a" type="m">mensch</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Met een <rhyme label="a" type="m" corresp="#s4:l1">wensch</rhyme></l>
        <l id="s4:l3" met="4" type="+-">‘s Hemels Koninckrijck te <rhyme label="b" type="f">winnen</rhyme>?</l>
        <l id="s4:l4" met="4" type="+-">Neen, maar die met alle <rhyme label="c" type="m">macht</rhyme></l>
        <l id="s4:l5" met="2" type="+-">En met <rhyme label="c" type="m" corresp="#s4:l4">kracht</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Dringen, raacken daar te <rhyme label="b" type="f" corresp="#s4:l3">binnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">O de poorte van de <rhyme label="a" type="m">Hel</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Krijgt men <rhyme label="a" type="m" corresp="#s5:l1">wel</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Licht en zonder arbeyd <rhyme label="b" type="f">open</rhyme>!</l>
        <l id="s5:l4" met="4" type="+-">Men komt daar van zelfs <rhyme label="c" type="m">genoeg</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Al te <rhyme label="c" type="m" corresp="#s5:l4">vroeg</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">‘t Is onnodig hart te <rhyme label="b" type="f" corresp="#s5:l3">loopen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">’t Helsche pat is ruym en <rhyme label="a" type="m">breed</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">En men <rhyme label="a" type="m" corresp="#s6:l1">treed</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Zoo gemackelijck daar <rhyme label="b" type="f">henen</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">Ja men daalt van zelfs al <rhyme label="c" type="m">heen</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Na <rhyme label="c" type="m" corresp="#s6:l4">beneen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Zonder moeyelickheid of <rhyme label="b" type="f" corresp="#s6:l3">steenen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">’t Hemels paadtje gaat steyl <rhyme label="a" type="m">op</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Die den <rhyme label="a" type="m" corresp="#s7:l1">top</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Daar van te beklimmen <rhyme label="b" type="f">poogen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">O! die worde ‘k weet niet <rhyme label="c" type="m">hoe</rhyme></l>
        <l id="s7:l5" met="2" type="+-">Mat en <rhyme label="c" type="m" corresp="#s7:l4">moe</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Die daar zijn wil moet dat <rhyme label="b" type="f" corresp="#s7:l3">mogen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Zalig is hy die <rhyme label="a" type="m">lijd</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Dapper <rhyme label="a" type="m" corresp="#s8:l1">strijd</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Tegens zijne <rhyme label="b" type="f">heyl-vianden</rhyme>;</l>
        <l id="s8:l4" met="4" type="+-">En met macht <rhyme label="c" type="m">geweldelijck</rhyme></l>
        <l id="s8:l5" met="2" type="+-">‘t <rhyme label="c" type="m" corresp="#s8:l4">Hemel-rijck</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Nemen, en in yver <rhyme label="b" type="f" corresp="#s8:l3">branden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">God zal haar een eeuw’ge <rhyme label="a" type="m">kroon</rhyme></l>
        <l id="s9:l2" met="2" type="+-">Tot een <rhyme label="a" type="m" corresp="#s9:l1">loon</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Op haar bloed’ge hoofden <rhyme label="b" type="f">zetten</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">En seer schoon in ‘t wit <rhyme label="c" type="m">bekleên</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Tot <rhyme label="c" type="m" corresp="#s9:l4">beneên</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Zonder vuyligheid of <rhyme label="b" type="f" corresp="#s9:l3">smetten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Om ten eynde van den <rhyme label="a" type="m">strijt</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Zeer <rhyme label="a" type="m" corresp="#s10:l1">verblijt</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Boven by den Heer der <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Met palm-tacken <rhyme label="c" type="m">triumphant</rhyme></l>
        <l id="s10:l5" met="2" type="+-">In de <rhyme label="c" type="m" corresp="#s10:l4">hand</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Eeuwiglijck te <rhyme label="b" type="f" corresp="#s10:l3">triumpheren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
