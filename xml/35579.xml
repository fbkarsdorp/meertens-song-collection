  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Leser comt den geest <rhyme label="a" type="f">vermaecken</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Al dat aerts is wilt <rhyme label="a" type="f" corresp="#s1:l1">versaecken</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Want het noyt en <rhyme label="b" type="m">versaeyt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Noch de ziel niet en <rhyme label="b" type="m" corresp="#s1:l3">fraeyt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Alleen naer uwen Godt wilt <rhyme label="a" type="f" corresp="#s1:l1">haecken</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Looft hem jonghe <rhyme label="c" type="m">Jeucht</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En vrijmoedich singht met <rhyme label="c" type="m" corresp="#s1:l6">vreucht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">By Iohannes is <rhyme label="a" type="f">gheschreven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die by 't Lam stonden <rhyme label="a" type="f" corresp="#s2:l1">verheven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die songhen op den <rhyme label="b" type="m">toon</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Een Liedeken seer <rhyme label="b" type="m" corresp="#s2:l3">schoon</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Voor den Bruydegom sonder <rhyme label="a" type="f" corresp="#s2:l1">sneven</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">D'heele Maeghden <rhyme label="c" type="m">schaer</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Met een stemme soet en <rhyme label="c" type="m" corresp="#s2:l6">claer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Paulus hevet oock <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In het vyfde tot <rhyme label="a" type="f" corresp="#s3:l1">d'Ephesen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Al waer hy seydt: weest <rhyme label="b" type="m">bly</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">In Godt vermaeckt u <rhyme label="b" type="m" corresp="#s3:l3">vrij</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Met liedekens lof-sanck als <rhyme label="a" type="f" corresp="#s3:l1">dese</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Speelt en singht met <rhyme label="c" type="m">vlijt</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Godt van als <rhyme label="c" type="m" corresp="#s3:l6">ghebenedijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dauid een man na't hert des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Als hy hem tot Godt quam <rhyme label="a" type="f" corresp="#s4:l1">keeren</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Om te doen sijn <rhyme label="b" type="m">ghebedt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ick bid u hier op <rhyme label="b" type="m" corresp="#s4:l3">let</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Speelden liedekens 't sijnder <rhyme label="a" type="f" corresp="#s4:l1">eeren</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Op sijn herpe <rhyme label="c" type="m">soet</rhyme></l>
        <l id="s4:l7" met="4" type="+-">In gheluck en <rhyme label="c" type="m" corresp="#s4:l6">teghenspoet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Prince hier wt mocht gy <rhyme label="a" type="f">bemerken</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Datmen in vreucht deucht can <rhyme label="a" type="f" corresp="#s5:l1">wercken</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Compt dan vermaeckt den <rhyme label="b" type="m">geest</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In Triumph Iesu <rhyme label="b" type="m" corresp="#s5:l3">meest</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Int goet wilt u den Heer <rhyme label="a" type="f" corresp="#s5:l1">verstercken</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Nemt danckbaer mijn <rhyme label="c" type="m">jonst</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Oordeelt Liefde en geen <rhyme label="c" type="m" corresp="#s5:l6">Const</rhyme>.</l>
      </lg>
    </lg>
  </text>
