    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Och ick soeck met groot <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Naer die mijn ziele wilt <rhyme label="a" type="f" corresp="#s1:l1">aenhanghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Sal ick u niet vinden <rhyme label="b" type="m">dan</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Sal ick u niet vinden <rhyme label="b" type="m" corresp="#s1:l3">dan</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Daer ick u nochtans wil <rhyme label="c" type="f">minnen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Vyt gheheelder hert en <rhyme label="c" type="f" corresp="#s1:l5">sinnen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Iesus soet soo veel ick <rhyme label="b" type="m" corresp="#s1:l3">kan</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Iesus soet soo veel ick <rhyme label="b" type="m" corresp="#s1:l3">kan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Blaest nu vry ghy noortsche <rhyme label="a" type="f">winden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Kan ick maer mijn Lief <rhyme label="a" type="f" corresp="#s2:l1">ghevinden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Soo en vraegh ick nieuwers <rhyme label="b" type="m">naer</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Soo en vraegh ick nieuwers <rhyme label="b" type="m" corresp="#s2:l3">naer</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Dat den donder my <rhyme label="c" type="f">verplette</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En gheheel in polfer <rhyme label="c" type="f" corresp="#s2:l5">sette</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Als ick Heer Iesus <rhyme label="b" type="m" corresp="#s2:l3">maer</rhyme>.</l>
        <l id="s2:l8" met="4" type="+-">Als ick Heer Iesus <rhyme label="b" type="m" corresp="#s2:l3">maer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wie soo stout hier van u <rhyme label="a" type="f">beyden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die my heel sal konnen <rhyme label="a" type="f" corresp="#s3:l1">scheyden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Van de liefde Christi <rhyme label="b" type="m">soet</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Van de liefde Christi <rhyme label="b" type="m" corresp="#s3:l3">soet</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Kâ€™wil de wereldt heel <rhyme label="c" type="f">verachten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En het vleesch gheheel <rhyme label="c" type="f" corresp="#s3:l5">versmachten</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Ende pletten met den <rhyme label="b" type="m" corresp="#s3:l3">voet</rhyme>.</l>
        <l id="s3:l8" met="4" type="+-">Ende pletten met den <rhyme label="b" type="m" corresp="#s3:l3">voet</rhyme>.</l>
