  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ons uwe Liefde <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">O Naem des <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Alleen <rhyme label="b" type="f" corresp="#s1:l2">begeeren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">U boven alle <rhyme label="a" type="m" corresp="#s1:l1">goedt</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">En werelts <rhyme label="b" type="f" corresp="#s1:l2">eeren</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">O Medecijn in <rhyme label="c" type="m">smert</rhyme>!</l>
        <l id="s1:l7" met="3" type="-+">O Leven van ons <rhyme label="c" type="m" corresp="#s1:l6">hert</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Ons’ hert en <rhyme label="d" type="f">sinnen</rhyme></l>
        <l id="s1:l9" met="2" type="-+">U weer <rhyme label="d" type="f" corresp="#s1:l8">beminnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Door Adam al <rhyme label="a" type="m">onreyn</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Tot noch wy <rhyme label="b" type="f">bleven</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Van u <rhyme label="b" type="f" corresp="#s2:l2">verdreven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">O Levende <rhyme label="a" type="m" corresp="#s2:l1">Fonteyn</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">We’rom <rhyme label="b" type="f" corresp="#s2:l2">vergeven</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Door uwe liefde <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Gehoorsaem totter <rhyme label="c" type="m" corresp="#s2:l6">doot</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">En uwe <rhyme label="d" type="f">wonden</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Sijn all’ ons’ <rhyme label="d" type="f" corresp="#s2:l8">sonden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Naer uw <rhyme label="a" type="m">barmhertigheydt</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">En ons <rhyme label="b" type="f">verlangen</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Wilt ons <rhyme label="b" type="f" corresp="#s3:l2">ontfangen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Om onse <rhyme label="a" type="m" corresp="#s3:l1">saligheyt</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Aen ‘t Cruys <rhyme label="b" type="f" corresp="#s3:l2">gehangen</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Waer boven uwen <rhyme label="c" type="m">naem</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Tot uwen lof <rhyme label="c" type="m" corresp="#s3:l6">bequaem</rhyme></l>
        <l id="s3:l8" met="2" type="-+">En tot ons <rhyme label="d" type="f">leven</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Is ons <rhyme label="d" type="f" corresp="#s3:l8">geschreven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Oock uw drie nagels <rhyme label="a" type="m">plant</rhyme></l>
        <l id="s4:l2" met="2" type="-+">In ons <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">En ons drie <rhyme label="b" type="f" corresp="#s4:l2">krachten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Op dat al ons’ <rhyme label="a" type="m" corresp="#s4:l1">verstandt</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Naer u mach <rhyme label="b" type="f" corresp="#s4:l2">trachten</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En sijn ons leste <rhyme label="c" type="m">woordt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Van u terstont <rhyme label="c" type="m" corresp="#s4:l6">verhoort</rhyme></l>
        <l id="s4:l8" met="2" type="-+">De Naem van <rhyme label="d" type="f">Iesus</rhyme></l>
        <l id="s4:l9" met="2" type="-+">De Naem van <rhyme label="d" type="f" corresp="#s4:l8">Iesus</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Laet oock om ons <rhyme label="a" type="m">rondom</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Van boven <rhyme label="b" type="f">dalen</rhyme></l>
        <l id="s5:l3" met="2" type="-+">u <rhyme label="b" type="f" corresp="#s5:l2">Minne-stralen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">ô Lieve <rhyme label="a" type="m" corresp="#s5:l1">Bruydegom</rhyme>!</l>
        <l id="s5:l5" met="2" type="-+">En nimmer <rhyme label="b" type="f" corresp="#s5:l2">dwalen</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Laet ons van ‘t eeuwigh <rhyme label="c" type="m">licht</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Laet eeuwigh uw <rhyme label="c" type="m" corresp="#s5:l6">gesicht</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Naer ons <rhyme label="d" type="f">betrouwen</rhyme></l>
        <l id="s5:l9" met="2" type="-+">Hier naer <rhyme label="d" type="f" corresp="#s5:l8">aenschouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>
