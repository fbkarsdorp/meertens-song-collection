  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LAet ons nu vrolijck <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">VVy Knynskens onder <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Staeckt droef heyt, en <rhyme label="b" type="m" corresp="#s1:l2">geween</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat teughsken sal ons <rhyme label="a" type="f" corresp="#s1:l1">genesen</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Ick brenght u <rhyme label="c" type="m">Jan</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Vise <rhyme label="d" type="m">pry</rhyme>,</l>
        <l id="s1:l7" met="2" type="+-">Geest het <rhyme label="c" type="m" corresp="#s1:l5">dan</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Die u <rhyme label="d" type="m" corresp="#s1:l6">by</rhyme></l>
        <l id="s1:l9" met="2" type="+-">Sit, die <rhyme label="c" type="m" corresp="#s1:l5">kan</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Ons de Snel weer vullen <rhyme label="e" type="m">vol</rhyme>;</l>
        <l id="s1:l11" met="5" type="+-">Want mijnen buyck die is nu weder <rhyme label="e" type="m" corresp="#s1:l10">hol</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die Pyp die moetter <rhyme label="a" type="f">gellen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Sa lustigh suypt, en <rhyme label="b" type="m">smoort</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wel Weert hebt gy t' <rhyme label="b" type="m" corresp="#s2:l2">gehoort</rhyme>?</l>
        <l id="s2:l4" met="3" type="-+">En brenght ons versche <rhyme label="a" type="f" corresp="#s2:l1">Snellen</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Sa, gasten <rhyme label="c" type="m">sa</rhyme>!</l>
        <l id="s2:l6" met="2" type="+-">Dat gaet <rhyme label="d" type="m">veur</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">Volght my <rhyme label="c" type="m" corresp="#s2:l5">na</rhyme></l>
        <l id="s2:l8" met="2" type="+-">Op dit <rhyme label="d" type="m" corresp="#s2:l6">speur</rhyme>,</l>
        <l id="s2:l9" met="2" type="+-">Ha <rhyme label="c" type="m" corresp="#s2:l5">viva</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Op de gesontheyt van ons <rhyme label="e" type="m">al</rhyme>,</l>
        <l id="s2:l11" met="5" type="+-">Ick nu dit kasken eens uytblasen <rhyme label="e" type="m" corresp="#s2:l10">sal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sa drinckt nu van <rhyme label="a" type="f">gelijcken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dit Kasken soo gy <rhyme label="b" type="m">weet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">DeÃª ick u eerst <rhyme label="b" type="m" corresp="#s3:l2">bescheet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">g'En moght daer van niet <rhyme label="a" type="f" corresp="#s3:l1">wycken</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Sa lustigh <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Vult de <rhyme label="d" type="m">maegh</rhyme>,</l>
        <l id="s3:l7" met="2" type="+-">En den <rhyme label="c" type="m" corresp="#s3:l5">krop</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Want wie <rhyme label="d" type="m" corresp="#s3:l6">saegh</rhyme>!</l>
        <l id="s3:l9" met="2" type="+-">Dat dit <rhyme label="c" type="m" corresp="#s3:l5">sop</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Oyt aen ons niet en <rhyme label="e" type="m">beviel</rhyme>,</l>
        <l id="s3:l11" met="5" type="+-">Want dat verheuge doet ons hert en <rhyme label="e" type="m" corresp="#s3:l10">siel</rhyme>.</l>
      </lg>
    </lg>
  </text>
