    <melody>Ich dank dir lieber Herr</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEER Christ dy loff ick <rhyme label="a" type="f">saghe</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">Voor dijne Weldaet <rhyme label="b" type="m">all'</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die ghy my desen <rhyme label="a" type="f" corresp="#s1:l1">Daghe</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Bethoont hebt over <rhyme label="b" type="m" corresp="#s1:l2">al</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dijn Name wil ick <rhyme label="c" type="f">Prijsen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Want ghy alleyn zijt <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Met dijn Lichaem my <rhyme label="c" type="f" corresp="#s1:l5">spijse</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Drenck my met dijnen <rhyme label="d" type="m" corresp="#s1:l6">Bloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dijn is alleyn die <rhyme label="a" type="f">Eere</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dijn is alleyn die <rhyme label="b" type="m">Roem</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die wraecke van ons <rhyme label="a" type="f" corresp="#s2:l1">keere</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dijn Seghen tot ons <rhyme label="b" type="m" corresp="#s2:l2">coem</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat wy in vrede <rhyme label="c" type="f">slapen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Bewaer ons Lijff end <rhyme label="d" type="m">Siel</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Gheeft ons des G'looves <rhyme label="c" type="f" corresp="#s2:l5">Wapen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Voor s'Duyvels listighe <rhyme label="d" type="m" corresp="#s2:l6">Pijl</rhyme>.</l>
      </lg>
    </lg>
  </text>
