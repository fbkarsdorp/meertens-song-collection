<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186881</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody>Heldere zonnen heldere stralen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEmel ag wat moet ik <rhyme label="a" type="f">hooren</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">Wat zoeken de Britten <rhyme label="b" type="m">dog</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Wille zy onze rust <rhyme label="a" type="f" corresp="#s1:l1">verstooren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En voeren een strengen <rhyme label="b" type="m" corresp="#s1:l2">Oorlog</rhyme>?</l>
        <l id="s1:l5" met="4" type="+-">Zyne dit nu <rhyme label="c" type="f">Bondgenooten</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die de Vreede Band <rhyme label="d" type="m">verbreekt</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En zoekt de dolk in 't hart te <rhyme label="c" type="f" corresp="#s1:l5">stooten</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">En zig op de welvaert <rhyme label="d" type="m" corresp="#s1:l6">wreekt</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Neen het zal u zoo niet <rhyme label="a" type="f">lukken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Wy hebben ook nog helden <rhyme label="b" type="m">moed</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">De vryheid, laet zig niet <rhyme label="a" type="f" corresp="#s2:l1">verdrukken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Zy mist eer, haer laetste <rhyme label="b" type="m" corresp="#s2:l2">bloed</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ja ze durft u stout <rhyme label="c" type="f">braveeren</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Al rust gy u met wapens <rhyme label="d" type="m">uyt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En zoekt op haer te <rhyme label="c" type="f" corresp="#s2:l5">Tri√∂mpheeren</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Neen uw Muitzugt word <rhyme label="d" type="m" corresp="#s2:l6">gestuit</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Kom dan, braeve <rhyme label="a" type="f">Officieren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Grypt met moet, het Haraas <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Streit als w ere <rhyme label="a" type="f" corresp="#s3:l1">Batavieren</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Streeft met roem, naer helden <rhyme label="b" type="m" corresp="#s3:l2">daen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Gelyk uwe eerste Vaders <rhyme label="c" type="f">deeden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Voor onz' dierbaer <rhyme label="d" type="m">Vaderland</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Hoe fier hebben zy <rhyme label="c" type="f" corresp="#s3:l5">gestreeden</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Tot een schrik voor <rhyme label="d" type="m" corresp="#s3:l6">Engeland</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Het Lot, myn Stad en <rhyme label="a" type="f">Landgenooten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Is tot nog toe <rhyme label="b" type="m">onbekent</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Maer by hooger hand <rhyme label="a" type="f" corresp="#s4:l1">besloten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Waer hy zig nog heenen <rhyme label="b" type="m" corresp="#s4:l2">wend</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Dog wy zullen alle <rhyme label="c" type="f">waegen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Goed en Bloed in deezen <rhyme label="d" type="m">stryd</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Den Hemel wil ons <rhyme label="c" type="f" corresp="#s4:l5">onderschragen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Wyl hy voor de Onschuld <rhyme label="d" type="m" corresp="#s4:l6">pleit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
