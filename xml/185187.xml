    <melody>Psalm 100 Datheen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Een nieu Liedt ick u schencken <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hoe dat ghy sult uyt liefde <rhyme label="a" type="m" corresp="#s1:l1">soet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Navolghen uwen <rhyme label="b" type="m">Bruydegom</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Iesus, waer dat hy gaet <rhyme label="b" type="m" corresp="#s1:l3">alom</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Vliet jonckheyts lusten die <rhyme label="a" type="m">vergaen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Soo sult ghy sijnen Geest <rhyme label="a" type="m" corresp="#s2:l1">ontfaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ghy wert deelachtigh ‘t aller <rhyme label="b" type="m">uur</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Sijn Godtlijcke soete <rhyme label="b" type="m" corresp="#s2:l3">natuur</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Soeckt ghy vermaeck, soeckt ghy <rhyme label="a" type="m">wellust</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Begeert ghy vreed’, en soeckt ghy <rhyme label="a" type="m" corresp="#s3:l1">rust</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soeckt ghy volcomen <rhyme label="b" type="m">soetigheyt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ghy vintse niet in <rhyme label="b" type="m" corresp="#s3:l3">d’ydelheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Begheert ghy rijckdom, schat, en <rhyme label="a" type="m">goet</rhyme>?</l>
        <l id="s4:l2" met="4" type="-+">En wilt ghy leven in <rhyme label="a" type="m" corresp="#s4:l1">voorspoet</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">De werelt u niet helpen <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">In Godt sijn dese dinghen <rhyme label="b" type="m" corresp="#s4:l3">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die kennisse van Iesus <rhyme label="a" type="m">minn</rhyme>’</l>
        <l id="s5:l2" met="4" type="-+">Sal u vernieuwen hert en <rhyme label="a" type="m" corresp="#s5:l1">sin</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Vernoeginge vint ghy <rhyme label="b" type="m">volmaeckt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Als ghy ‘s Gheests soete vruchten <rhyme label="b" type="m" corresp="#s5:l3">smaeckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">‘s Geests vreught is liefde, vreed’ en <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Lanckmoedigheyt, geloof, en <rhyme label="a" type="m" corresp="#s6:l1">deught</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Vriendelijckheyt, en <rhyme label="b" type="m">goedigheyt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maticheyt, en <rhyme label="b" type="m" corresp="#s6:l3">sachtmoedigheyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Vliet dan het geen dat u <rhyme label="a" type="m">verleyt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">V herte voor den Heer <rhyme label="a" type="m" corresp="#s7:l1">bereyt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Treckt gheen vremt jock met niemant <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Soo sal u ziel geen prijckel <rhyme label="b" type="m" corresp="#s7:l3">staen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Soo wert ghy eenen tempel <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Waer in den Vader en den <rhyme label="a" type="m" corresp="#s8:l1">Soon</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Woonachtigh sullen sijn <rhyme label="b" type="m">alleyn</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ist dat ghy hout u ziele <rhyme label="b" type="m" corresp="#s8:l3">reyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
