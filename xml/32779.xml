  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">GOdt Vader o ghenadigh <rhyme label="a" type="f">Heer</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">V ghenade is soo <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Hoort my toch ick bid u <rhyme label="a" type="f" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Van vier dinghen heb ick <rhyme label="b" type="m" corresp="#s1:l2">noot</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Gracy, Deught, Kost en <rhyme label="c" type="m">Habijt</rhyme>.</l>
        <l id="s1:l6" met="4" type="+-">Thoont dat ghy mijn Vader <rhyme label="c" type="m" corresp="#s1:l5">zijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Alderliefsten Iesu <rhyme label="a" type="f">Christe</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Schelt my quijt al mijn <rhyme label="b" type="m">misdaet</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Dat mijn sotte jonckheyt <rhyme label="a" type="f" corresp="#s2:l1">miste</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Heer dat oock vergheten <rhyme label="b" type="m" corresp="#s2:l2">laet</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Doet my naermaels gheen <rhyme label="c" type="m">verwijt</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Thoont dat ghy mijn Broeder <rhyme label="c" type="m" corresp="#s2:l5">zijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Heylich Gheest, o wijs <rhyme label="a" type="f">berader</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Wijst een onberadich <rhyme label="b" type="m">kindt</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">O schoon licht comt my toch <rhyme label="a" type="f" corresp="#s3:l1">naerder</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Doet my sien, want ick ben <rhyme label="b" type="m" corresp="#s3:l2">blindt</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Leert my kennen 's vyandts <rhyme label="c" type="m">strijdt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Thoont dat ghy mijn Meester <rhyme label="c" type="m" corresp="#s3:l5">zijt</rhyme>.</l>
      </lg>
    </lg>
