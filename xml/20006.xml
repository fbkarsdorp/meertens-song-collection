  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">‘tLEvertje, is van geen <rhyme label="a" type="f">Knijntje</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Soetste Soetert, proef een <rhyme label="b" type="m">reys</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">’t Is van Quee, noch <rhyme label="a" type="f" corresp="#s1:l1">Faly-Bagijntje</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Doch ’t is lecker naer den <rhyme label="b" type="m" corresp="#s1:l2">eys</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">’t Levertje is van een <rhyme label="c" type="m">Ram</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Inden Echt mijn lieve <rhyme label="c" type="m" corresp="#s1:l5">Lam</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">’t Levertje is van gheen <rhyme label="a" type="f">Haesje</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Van gheen Hart, noch van geen <rhyme label="b" type="m">Hin</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Evenwel daer op een <rhyme label="a" type="f" corresp="#s2:l1">glaesje</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Heer, dat heeft eerst soetheyt <rhyme label="b" type="m" corresp="#s2:l2">in</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">’t Levertje is van een <rhyme label="c" type="m">Hoen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Yeder geeft de sijn een <rhyme label="c" type="m" corresp="#s2:l5">soen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">’t Levertje, is van gheen <rhyme label="a" type="f">Haentje</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Van gheen Henn’tje, doch ’t is <rhyme label="b" type="m">eel</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Van geen Reyger, Meeu, noch <rhyme label="a" type="f" corresp="#s3:l1">Swaentje</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">’t Gaet soo glatjes door mijn <rhyme label="b" type="m" corresp="#s3:l2">keel</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">’t Levertje dat smaeckt van ’t <rhyme label="c" type="m">zout</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Heer die oock eens was <rhyme label="c" type="m" corresp="#s3:l5">ghetrout</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">’t Levertje, niet soete <rhyme label="a" type="f">Vryster</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Is van Hont, noch van geen <rhyme label="b" type="m">Kat</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Van geen Eend, noch van geen <rhyme label="a" type="f" corresp="#s4:l1">Lyster</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Van geen Muys; noch van gheen <rhyme label="b" type="m" corresp="#s4:l2">Rat</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">’t Levertje is van gheen <rhyme label="c" type="m">Snip</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Waer ick eens in Venus <rhyme label="c" type="m" corresp="#s4:l5">Schip</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">’t Levertje sey lest ons <rhyme label="a" type="f">Gysje</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Is waerachtigh Vleys, noch <rhyme label="b" type="m">Vis</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Van geen Spreeuw, noch geen <rhyme label="a" type="f" corresp="#s5:l1">Patrysje</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Van gheen Duyf, ‘k sey Schaep j’hebt <rhyme label="b" type="m" corresp="#s5:l2">mis</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">’t Levertje is van een <rhyme label="c" type="m">Gans</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Kom te bed, ick waegh de <rhyme label="c" type="m" corresp="#s5:l5">kans</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">’t Levertje, o! soet jonck <rhyme label="a" type="f">Meysje</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Ia wat Lever wesen <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Waeghj ‘et, ‘k waeg het mee een <rhyme label="a" type="f" corresp="#s6:l1">reysje</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">‘k Houwer, o! soo wonder <rhyme label="b" type="m" corresp="#s6:l2">van</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">’t Levertje veraert in <rhyme label="c" type="m">Kuyt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Wie sal slapen by de <rhyme label="c" type="m" corresp="#s6:l5">Bruydt</rhyme>?</l>
      </lg>
    </lg>
  </text>
