  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk ben deurwont int herte <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Van mijn lief <rhyme label="b" type="m">gracieus</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Die Ick met siele en lijf <rhyme label="a" type="f" corresp="#s1:l1">beminnen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Men sinnen <rhyme label="b" type="m" corresp="#s1:l2">Coragieus</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dats Christus <rhyme label="b" type="m" corresp="#s1:l2">glorieus</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Volmaeckt wijs en <rhyme label="c" type="f">verstandicht</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Lievelick goet soet ende <rhyme label="c" type="f" corresp="#s1:l6">valiandich</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">In mijn lieueken reyn <rhyme label="b" type="m" corresp="#s1:l2">amoreus</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Vierich heeft hy my therte <rhyme label="a" type="f">ontsteken</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Met zijnder minnen <rhyme label="b" type="m">gloet</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Ick cant niet laeten van mijn lief <rhyme label="a" type="f" corresp="#s2:l1">t'spreken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hoe wel nijders <rhyme label="b" type="m" corresp="#s2:l2">onvroet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sulcx int herte wee <rhyme label="b" type="m" corresp="#s2:l2">doet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sy en connent oock niet <rhyme label="c" type="f">lijden</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Met mijn lief so wil ick my <rhyme label="c" type="f" corresp="#s2:l6">verblijden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ick en mijn lieueken <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Schoon lief yemant mochte <rhyme label="a" type="f">vraghen</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Van waer comt die <rhyme label="b" type="m">swaerheyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat nijders niet connen <rhyme label="a" type="f" corresp="#s3:l1">verdragen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Liefs liefde vol <rhyme label="b" type="m" corresp="#s3:l2">eerbaerheyt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Gheeft antwoort met <rhyme label="b" type="m" corresp="#s3:l2">bescheyt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Nijders die zijt <rhyme label="c" type="f">bevonden</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Listich, twistich, leugenachtich van <rhyme label="c" type="f" corresp="#s3:l6">gronden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Mijn lieveken is de <rhyme label="b" type="m" corresp="#s3:l2">waerheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Princelick lief in liefde <rhyme label="a" type="f">volcomen</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Sydy en anders <rhyme label="b" type="m">gheen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ghy hebt my lief in liefs liefde <rhyme label="a" type="f" corresp="#s4:l1">aengenomen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Spijts die nijders <rhyme label="b" type="m" corresp="#s4:l2">onreen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Ick en mijn lief zijn <rhyme label="b" type="m" corresp="#s4:l2">een</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En sullent oock wel <rhyme label="c" type="f">blyven</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Met m' lief soo wil ick vreucht <rhyme label="c" type="f" corresp="#s4:l6">bedrijven</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Eeuwelick sonder <rhyme label="b" type="m" corresp="#s4:l2">afscheen</rhyme>.</l>
      </lg>
    </lg>
  </text>
