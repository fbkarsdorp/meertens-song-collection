    <tags/>
    <melody>Régnez dans mon âme</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Leidstar van myn <rhyme label="a" type="f">liefde</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Die al lang my <rhyme label="a" type="f" corresp="#s1:l1">griefde</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">En door uw <rhyme label="b" type="m">gezicht</rhyme></l>
        <l id="s1:l4" met="4" type="-+">My hebt verlicht, my hebt <rhyme label="b" type="m" corresp="#s1:l3">verlicht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dat geen donkre wolk van om <rhyme label="c" type="m">hoog</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Ooit bezwalke uw vrindelyk <rhyme label="c" type="m" corresp="#s1:l5">oog</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Dat is all' myn wensch en <rhyme label="d" type="m">beê</rhyme>,</l>
        <l id="s1:l8" met="6" type="+-">Dan leef ik in vreê, Dan leef ik in <rhyme label="d" type="m" corresp="#s1:l7">vreê</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Uw gezicht, vol <rhyme label="a" type="f">luister</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Geefd my licht in 't <rhyme label="a" type="f" corresp="#s2:l1">duister</rhyme></l>
        <l id="s2:l3" met="3" type="+-">En elk straaltje <rhyme label="b" type="m">voed</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Myn hoop met moed, myn hoop met <rhyme label="b" type="m" corresp="#s2:l3">moed</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">'k Weet heel wel, 't ontbreekt aan u <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat gy my geen wedermin <rhyme label="c" type="m" corresp="#s2:l5">bied</rhyme></l>
        <l id="s2:l7" met="4" type="+-">En in schyn afkerig <rhyme label="d" type="m">zyt</rhyme>,</l>
        <l id="s2:l8" met="6" type="+-">Tot een' andren tyd, Tot een' andren <rhyme label="d" type="m" corresp="#s2:l7">tyd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Houd my in <rhyme label="a" type="f">gedachten</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Zoo by daag' als <rhyme label="a" type="f" corresp="#s3:l1">nachten</rhyme>:</l>
        <l id="s3:l3" met="3" type="+-">Denk aan myne <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">ô Zielsvrindin, ô <rhyme label="b" type="m" corresp="#s3:l3">Zielsvrindin</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">'k Zie dien dag eerlang aan den <rhyme label="c" type="m">trans</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Dat gy my door uw' heldren <rhyme label="c" type="m" corresp="#s3:l5">glans</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Naar myn wensch verlichten <rhyme label="d" type="m">zult</rhyme>;</l>
        <l id="s3:l8" met="6" type="+-">Adieu lief, geduld, Adieu lief, <rhyme label="d" type="m" corresp="#s3:l7">geduld</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
