  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ontwaekt die ligt in <rhyme label="a" type="f">ruste</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gy dochters van <rhyme label="b" type="m">Sioen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ontfangt den Mey met <rhyme label="a" type="f" corresp="#s1:l1">luste</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die met bladeren <rhyme label="b" type="m" corresp="#s1:l2">groen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Daer staet voor uwe <rhyme label="c" type="f">deure</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Lieffelyk en <rhyme label="d" type="m">triumphant</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hy brengt ons uyt <rhyme label="c" type="f" corresp="#s1:l5">getreure</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Christus uwen Mey <rhyme label="d" type="m" corresp="#s1:l6">plaisant</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Haelt hem in met <rhyme label="a" type="f">haesten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Opent uw' deur' <rhyme label="b" type="m">terstond</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Laet hem nu zyn den <rhyme label="a" type="f" corresp="#s2:l1">naesten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In uws herten <rhyme label="b" type="m" corresp="#s2:l2">grond</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Hy staet zeer schoon in 't <rhyme label="c" type="f">bloeyen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Plant hem in uw Hof voor <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Zyn' vruchten die daer <rhyme label="c" type="f" corresp="#s2:l5">groeyen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">U voor eeuwig voeden <rhyme label="d" type="m" corresp="#s2:l6">zal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Christus den Mey <rhyme label="a" type="f">ydoone</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Staet zeer wyd <rhyme label="b" type="m">ontdaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met vyf takskens zeer <rhyme label="a" type="f" corresp="#s3:l1">schoone</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met vruchten <rhyme label="b" type="m" corresp="#s3:l2">overlaen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Rood als korael na <rhyme label="c" type="f">wenschen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die elk mag plukken zonder <rhyme label="d" type="m">geld</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Want hy voor alle <rhyme label="c" type="f" corresp="#s3:l5">menschen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Heeft deze vrucht voor <rhyme label="d" type="m" corresp="#s3:l6">gestelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Aen dezen Mey ter <rhyme label="a" type="f">zyden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Is een doorne <rhyme label="b" type="m">sprong</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Daer elk mag in <rhyme label="a" type="f" corresp="#s4:l1">verblyden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ider oud, en <rhyme label="b" type="m" corresp="#s4:l2">jong</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat is de waer' <rhyme label="c" type="f">fonteyne</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Komt die van dorste zyt <rhyme label="d" type="m">vermoeyd</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Drinkt daer uyt groot en <rhyme label="c" type="f" corresp="#s4:l5">kleyne</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Want zy geduerig <rhyme label="d" type="m" corresp="#s4:l6">overvloeyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wilt gy u gaen <rhyme label="a" type="f">vermaeken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">In zyn' weyden <rhyme label="b" type="m">groen</rhyme>?</l>
        <l id="s5:l3" met="3" type="-+">Gy moet eerstmael <rhyme label="a" type="f" corresp="#s5:l1">verzaeken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">'s Weirelds lust noyt <rhyme label="b" type="m" corresp="#s5:l2">doen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Komt haer lust <rhyme label="c" type="f">gerezen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dryft daer mede uwen <rhyme label="d" type="m">spot</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Want uw lief <rhyme label="c" type="f" corresp="#s5:l5">geprezen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Is een iverzuchtig <rhyme label="d" type="m" corresp="#s5:l6">God</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hy is den steen zeer <rhyme label="a" type="f">vaste</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En een vasten <rhyme label="b" type="m">pilaer</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Zyt gy bezwaerd met <rhyme label="a" type="f" corresp="#s6:l1">laste</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hy is ons <rhyme label="b" type="m" corresp="#s6:l2">middelaer</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Hy is de open' <rhyme label="c" type="f">deure</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Onzen oprechten <rhyme label="d" type="m">Advocaet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Die voor ons t'alder <rhyme label="c" type="f" corresp="#s6:l5">ure</rhyme></l>
        <l id="s6:l8" met="3" type="-+">By zyn Heer Vader <rhyme label="d" type="m" corresp="#s6:l6">staet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Sion uw Lief vol <rhyme label="a" type="f">vreden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Is uyt minne <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">In den Tempel <rhyme label="a" type="f" corresp="#s7:l1">getreden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van Calvarien <rhyme label="b" type="m" corresp="#s7:l2">groot</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Staet op, weest op uw' <rhyme label="c" type="f">hoede</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Trekt aen dat rechte <rhyme label="d" type="m">Bruyloft-kleed</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Den trouwring van zyn <rhyme label="c" type="f" corresp="#s7:l5">bloede</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Die is daer voor u <rhyme label="d" type="m" corresp="#s7:l6">bereed</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Uw Bruydegom vol <rhyme label="a" type="f">minne</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Is aen den kruys <rhyme label="b" type="m">Autaer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Om u liefste <rhyme label="a" type="f" corresp="#s8:l1">vriendinne</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Eeuwig te trouwen <rhyme label="b" type="m" corresp="#s8:l2">daer</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Weest haestig op de <rhyme label="c" type="f">gangen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Met overschoon <rhyme label="d" type="m">geluyd</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Hy zal u daer <rhyme label="c" type="f" corresp="#s8:l5">ontfangen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Als zyn' alderliefste <rhyme label="d" type="m" corresp="#s8:l6">Bruyd</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Als gy zyn vaste <rhyme label="a" type="f">trouwe</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Daer zult hebben <rhyme label="b" type="m">ontfaen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Een' kroone fyn van <rhyme label="a" type="f" corresp="#s9:l1">gouwe</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Word u <rhyme label="b" type="m" corresp="#s9:l2">aengedaen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Uw Bruydegom is <rhyme label="c" type="f">vooren</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Wilt gy hooren nae zyn' <rhyme label="d" type="m">stem</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Zoo zult gy vreugd <rhyme label="c" type="f" corresp="#s9:l5">oorboren</rhyme></l>
        <l id="s9:l8" met="3" type="-+">In dat Nieuw <rhyme label="d" type="m" corresp="#s9:l6">Jeruzalem</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Hy roept met zoete <rhyme label="a" type="f">toone</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Volgt hem <rhyme label="b" type="m">onbevreesd</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Myn' Bruyd, myn' duyv', <rhyme label="a" type="f" corresp="#s10:l1">myn'schoone</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Komt nu ter Bruyloft <rhyme label="b" type="m" corresp="#s10:l2">feest</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Ik hebb'al doen <rhyme label="c" type="f">bereyden</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Komt uyt blyde jonste <rhyme label="d" type="m">gy</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Wy zullen ons <rhyme label="c" type="f" corresp="#s10:l5">vermeyden</rhyme></l>
        <l id="s10:l8" met="3" type="-+">In mijns Vaders Ryke <rhyme label="d" type="m" corresp="#s10:l6">vry</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Volgt hem den weg recht <rhyme label="a" type="f">deure</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Met eem bereyden <rhyme label="b" type="m">zin</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Uw lief staet voor de <rhyme label="a" type="f" corresp="#s11:l1">deure</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Om u te laeten <rhyme label="b" type="m" corresp="#s11:l2">in</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Met eenen kus van <rhyme label="c" type="f">peyze</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Aen beyde de wangen <rhyme label="d" type="m">dyn</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">In het 's levens <rhyme label="c" type="f" corresp="#s11:l5">Paleyze</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Zult gy daer ontfangen <rhyme label="d" type="m" corresp="#s11:l6">zyn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Als gy daer zyt <rhyme label="a" type="f">gezeten</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Aen zyne tafel <rhyme label="b" type="m">breed</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Een' spyze <rhyme label="a" type="f" corresp="#s12:l1">ongemeten</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Word u aldaer <rhyme label="b" type="m" corresp="#s12:l2">bereed</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Die u gansch zal <rhyme label="c" type="f">verzaeden</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Meer als is <rhyme label="d" type="m">verzinnelyk</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Daer is 't vol van <rhyme label="c" type="f" corresp="#s12:l5">genaden</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Zyn klaer aenschyn <rhyme label="d" type="m" corresp="#s12:l6">minnelyk</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">daer zal ik u <rhyme label="a" type="f">verblyden</rhyme></l>
        <l id="s13:l2" met="3" type="-+">In beyde myne ermen <rhyme label="b" type="m">dan</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Kleederen van witte <rhyme label="a" type="f" corresp="#s13:l1">zyde</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Zult gy daer trekken <rhyme label="b" type="m" corresp="#s13:l2">aen</rhyme>:</l>
        <l id="s13:l5" met="3" type="-+">Klaer boven den <rhyme label="c" type="f">christale</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Zal hy u schinken daer den <rhyme label="d" type="m">wyn</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Dat is in 's levens <rhyme label="c" type="f" corresp="#s13:l5">zaele</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Zyn' liefd' en zal geen eynde <rhyme label="d" type="m" corresp="#s13:l6">zyn</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">'t En is niet om <rhyme label="a" type="f">gronderen</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Noyt tong en heeft <rhyme label="b" type="m">voorzeyt</rhyme>:</l>
        <l id="s14:l3" met="3" type="-+">De vreugd zonder <rhyme label="a" type="f" corresp="#s14:l1">cefferen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Die u daer is <rhyme label="b" type="m" corresp="#s14:l2">bereyd</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Van eeuwe tot <rhyme label="c" type="f">eeuwe</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Zult gy daer voor elks <rhyme label="d" type="m">gezicht</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Blinken boven den <rhyme label="c" type="f" corresp="#s14:l5">sneeuwe</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">Als des Hemels zonne <rhyme label="d" type="m" corresp="#s14:l6">licht</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Geen hert en kan <rhyme label="a" type="f">gedenken</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Noyt oog' en heeft <rhyme label="b" type="m">gezien</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">De blydschap zonder <rhyme label="a" type="f" corresp="#s15:l1">minken</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Die u daer zal <rhyme label="b" type="m" corresp="#s15:l2">geschien</rhyme>:</l>
        <l id="s15:l5" met="3" type="-+">Dan word gy uyt 't <rhyme label="c" type="f">vervaeren</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Van des weirelds zuer <rhyme label="d" type="m">fenyn</rhyme>:</l>
        <l id="s15:l7" met="3" type="-+">Thien honderd duyzend <rhyme label="c" type="f" corresp="#s15:l5">jaeren</rhyme></l>
        <l id="s15:l8" met="3" type="-+">Zal u maer als een' ure <rhyme label="d" type="m" corresp="#s15:l6">zyn</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Met recht mogt gy <rhyme label="a" type="f">verblyden</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Gy Sionsche <rhyme label="b" type="m">Bruyd</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Daer word aen alle <rhyme label="a" type="f" corresp="#s16:l1">zyden</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Een overschoon <rhyme label="b" type="m" corresp="#s16:l2">geluyd</rhyme></l>
        <l id="s16:l5" met="3" type="-+">Van harpen ende <rhyme label="c" type="f">snaeren</rhyme></l>
        <l id="s16:l6" met="3" type="-+">In alderhande <rhyme label="d" type="m">vreugdenspel</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Met de Liefste zult gy <rhyme label="c" type="f" corresp="#s16:l5">paeren</rhyme></l>
        <l id="s16:l8" met="3" type="-+">Doet gy maer na zyn <rhyme label="d" type="m" corresp="#s16:l6">bevel</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Dan worden zy in <rhyme label="a" type="f">sneven</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">En in banden <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Die u hebben <rhyme label="a" type="f" corresp="#s17:l1">verdreven</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">En met schande <rhyme label="b" type="m" corresp="#s17:l2">weerstaen</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">Van ure tot <rhyme label="c" type="f">ure</rhyme></l>
        <l id="s17:l6" met="3" type="-+">Klimt haeren rook, zoo 't is <rhyme label="d" type="m">voorzeyd</rhyme>.</l>
        <l id="s17:l7" met="3" type="-+">Altyd in <rhyme label="c" type="f" corresp="#s17:l5">getreure</rhyme></l>
        <l id="s17:l8" met="3" type="-+">Van eeuwigheyd tot <rhyme label="d" type="m" corresp="#s17:l6">eeuwigheyd</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Princesse fleur der <rhyme label="a" type="f">Vrouwen</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Die u benyden <rhyme label="b" type="m">zaen</rhyme>:</l>
        <l id="s18:l3" met="3" type="-+">Als zy zullen <rhyme label="a" type="f" corresp="#s18:l1">aenschouwen</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Ter rechte zyde <rhyme label="b" type="m" corresp="#s18:l2">staen</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">Dan zullen zy drukkig <rhyme label="c" type="f">klaegen</rhyme></l>
        <l id="s18:l6" met="3" type="-+">Dat zy met u den rechten <rhyme label="d" type="m">pad</rhyme>,</l>
        <l id="s18:l7" met="3" type="-+">Niet en gingen na Gods <rhyme label="c" type="f" corresp="#s18:l5">behaegen</rhyme>,</l>
        <l id="s18:l8" met="3" type="-+">Maer het word te spaede <rhyme label="d" type="m" corresp="#s18:l6">wat</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Oorlof u reynder <rhyme label="a" type="f">gemeeten</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Gy die in Sion <rhyme label="b" type="m">zyt</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Fondeert u op 't <rhyme label="a" type="f" corresp="#s19:l1">gesteente</rhyme></l>
        <l id="s19:l4" met="3" type="-+">Christus <rhyme label="b" type="m" corresp="#s19:l2">gebenedyd</rhyme>:</l>
        <l id="s19:l5" met="3" type="-+">Gy en kont geenzins <rhyme label="c" type="f">faelen</rhyme>,</l>
        <l id="s19:l6" met="3" type="-+">Volgt dezen weg aen elken <rhyme label="d" type="m">kant</rhyme>,</l>
        <l id="s19:l7" met="3" type="-+">Tot in des Hemels <rhyme label="c" type="f" corresp="#s19:l5">paelen</rhyme>,</l>
        <l id="s19:l8" met="3" type="-+">In dat lustig belofde <rhyme label="d" type="m" corresp="#s19:l6">land</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
