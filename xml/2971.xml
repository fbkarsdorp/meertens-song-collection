    <tags/>
    <melody>Hiertussen zo gij lijden moet</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HIertuschen, zoo ghy lijden <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En menigh quaedt <rhyme label="b" type="f">gedoogen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Geen quaedt zoo quaedt of 't heeft zijn <rhyme label="a" type="m" corresp="#s1:l1">goedt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In ware wijsheydts <rhyme label="b" type="f" corresp="#s1:l2">oogen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het lijden dat uytwendigh <rhyme label="a" type="m">raeckt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Maeckt geen goedt mensch <rhyme label="b" type="f">rampzaligh</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">'t Is d'onwil die ellendigh <rhyme label="a" type="m" corresp="#s2:l1">maeckt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Door lusten, zot en <rhyme label="b" type="f" corresp="#s2:l2">dwaligh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In 's winters harde <rhyme label="a" type="m">koudicheydt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Kanm' oock al nut <rhyme label="b" type="f">bezinnen</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">De warmt te wijdt van 't hert <rhyme label="a" type="m" corresp="#s3:l1">verspreydt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gaet des te meer na <rhyme label="b" type="f" corresp="#s3:l2">binnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De ramp, die ons hier <rhyme label="a" type="m">wedervaert</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Door 't aerdtsch gemacks <rhyme label="b" type="f">onthalen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Drijft dick den geest na <rhyme label="a" type="m" corresp="#s4:l1">binnnenwaert</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die al te wijdt ging <rhyme label="b" type="f" corresp="#s4:l2">dwalen</rhyme>:</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Geeft menigh mensch hem zelven <rhyme label="a" type="m">we'er</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En doet hem naerstigh <rhyme label="b" type="f">letten</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Om uyt den rechten streeck niet <rhyme label="a" type="m" corresp="#s5:l1">meer</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Zoo wijdt zijn loop te <rhyme label="b" type="f" corresp="#s5:l2">zetten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wanneer de moeder 't lieve <rhyme label="a" type="m">kindt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wil van de borsten <rhyme label="b" type="f">weeren</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Met roet, of 't bitterst datze <rhyme label="a" type="m" corresp="#s6:l1">vindt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Zal zy de speen <rhyme label="b" type="f" corresp="#s6:l2">besmeeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als Godt ons om een Hemelsch <rhyme label="a" type="m">Zoet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Het Aerdtsch wil doen <rhyme label="b" type="f">verzaken</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Koomt hy ons door des Lijdens <rhyme label="a" type="m" corresp="#s7:l1">roet</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Het schijn-zoet tegen <rhyme label="b" type="f" corresp="#s7:l2">maken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Al wordt schoon Isa'c <rhyme label="a" type="m">uytgeleydt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">(Zoo 't schijnt) ter <rhyme label="b" type="f">offerhande</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Al staet d'Altaer en 't hout <rhyme label="a" type="m" corresp="#s8:l1">bereydt</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Om 't offer te <rhyme label="b" type="f" corresp="#s8:l2">verbranden</rhyme>:</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Godt evenwel en heeft niet <rhyme label="a" type="m">voor</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Van 't leven hem <rhyme label="b" type="f">t'ontvremen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Maer van zijns Knechts geloof hier <rhyme label="a" type="m" corresp="#s9:l1">door</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Een wisse proef te <rhyme label="b" type="f" corresp="#s9:l2">nemen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Isa'c verrijst als uyt den <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">De Ram alleen moet <rhyme label="b" type="f">sterven</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Het lijden doet den Geest geen <rhyme label="a" type="m" corresp="#s10:l1">noodt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Qua'e Lust moet slechts <rhyme label="b" type="f" corresp="#s10:l2">verderven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Al zwiert 't Kompas schoon gins en <rhyme label="a" type="m">heen</rhyme>;</l>
        <l id="s11:l2" met="3" type="-+">Of baren 't schip al <rhyme label="b" type="f">decken</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">De Naeld, gestreken aen <rhyme label="a" type="m" corresp="#s11:l1">Zeyl-steen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Zal staegh ten noorden <rhyme label="b" type="f" corresp="#s11:l2">strecken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Of schoon de vroome zwerven <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En kruys op kruys <rhyme label="b" type="f">verwachten</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Na reyne Deuchdt en 't eeuwigh <rhyme label="a" type="m" corresp="#s12:l1">goedt</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Staen stadigh zijn <rhyme label="b" type="f" corresp="#s12:l2">gedachten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Daer is een vloedt die onder <rhyme label="a" type="m">d'aerdt</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Dwers door de zee koomt <rhyme label="b" type="f">zijgen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Doch zonder ('t is verwond'rens <rhyme label="a" type="m" corresp="#s13:l1">waerdt</rhyme>)</l>
        <l id="s13:l4" met="3" type="-+">Yet zouts aen zich te <rhyme label="b" type="f" corresp="#s13:l2">krijgen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Een Christen, dwers door <rhyme label="a" type="m">wederspoedt</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Van Godt hem <rhyme label="b" type="f">opgezonden</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Omringt met quaedt, blijft even <rhyme label="a" type="m" corresp="#s14:l1">goedt</rhyme></l>
        <l id="s14:l4" met="3" type="-+">En onbesmet van <rhyme label="b" type="f" corresp="#s14:l2">zonden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Een albedreven <rhyme label="a" type="m">Konstenaer</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Blijft steedts zijns Konsts <rhyme label="b" type="f">bewijzer</rhyme>:</l>
        <l id="s15:l3" met="4" type="-+">Ontbreeckt hem goudt of dierbaer <rhyme label="a" type="m" corresp="#s15:l1">waer</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Hy werckt in loodt of <rhyme label="b" type="f" corresp="#s15:l2">yzer</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Een vrome, als 't hem tegen <rhyme label="a" type="m">gaet</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Hoeft niet van 't goet te <rhyme label="b" type="f">wijcken</rhyme>:</l>
        <l id="s16:l3" met="4" type="-+">Zoo wel in slecht als beter <rhyme label="a" type="m" corresp="#s16:l1">staet</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Kan hy zijn Deuchdt doen <rhyme label="b" type="f" corresp="#s16:l2">blijcken</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Ia zoo gereeder als het <rhyme label="a" type="m">is</rhyme></l>
        <l id="s17:l2" met="3" type="-+">In Hout dan Goudt te <rhyme label="b" type="f">snijden</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Zoo lichter is 't in <rhyme label="a" type="m" corresp="#s17:l1">kommernis</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Dan ruymheydt, zond te <rhyme label="b" type="f" corresp="#s17:l2">mijden</rhyme>:</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Zoo veylighlijcker kanmen <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Den wegh na 't Godlijck <rhyme label="b" type="f">leven</rhyme>.</l>
        <l id="s18:l3" met="4" type="-+">Dat dickwils 't meeste schijnt te <rhyme label="a" type="m" corresp="#s18:l1">scha'en</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Kan 't grootste voordeel <rhyme label="b" type="f" corresp="#s18:l2">geven</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Een Christen is niet als het <rhyme label="a" type="m">glas</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Dat licht'lijck raeckt in <rhyme label="b" type="f">stucken</rhyme>;</l>
        <l id="s19:l3" met="4" type="-+">Of als het al-fatsoenigh <rhyme label="a" type="m" corresp="#s19:l1">was</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Dat steedts zich laet <rhyme label="b" type="f" corresp="#s19:l2">herdrucken</rhyme>:</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Maer als den Diamanten <rhyme label="a" type="m">ring</rhyme>,</l>
        <l id="s20:l2" met="3" type="-+">Die, en vry is van <rhyme label="b" type="f">breken</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">En in een yeder druckbaer <rhyme label="a" type="m" corresp="#s20:l1">ding</rhyme></l>
        <l id="s20:l4" met="3" type="-+">Laet zijn fatsoen en <rhyme label="b" type="f" corresp="#s20:l2">teecken</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Dat buyten is, dat moet na <rhyme label="a" type="m">hem</rhyme>;</l>
        <l id="s21:l2" met="3" type="-+">Niet hy na 't geen is <rhyme label="b" type="f">buyten</rhyme>.</l>
        <l id="s21:l3" met="4" type="-+">Die d'oore scherp heeft na Godts <rhyme label="a" type="m" corresp="#s21:l1">stem</rhyme></l>
        <l id="s21:l4" met="3" type="-+">Laet nergens door zich <rhyme label="b" type="f" corresp="#s21:l2">stuyten</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">O! die 't voor eere achten <rhyme label="a" type="m">kan</rhyme></l>
        <l id="s22:l2" met="3" type="-+">En voor een groote <rhyme label="b" type="f">vreuchde</rhyme>,</l>
        <l id="s22:l3" met="4" type="-+">Wanneer hem Christi kruys koomt <rhyme label="a" type="m" corresp="#s22:l1">a'n</rhyme>,</l>
        <l id="s22:l4" met="3" type="-+">Raeckt licht ter hooghster <rhyme label="b" type="f" corresp="#s22:l2">Deuchde</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Hoe zwaerder lijden Godt u <rhyme label="a" type="m">zendt</rhyme></l>
        <l id="s23:l2" met="3" type="-+">Hoe meer hy kondt wil <rhyme label="b" type="f">maken</rhyme></l>
        <l id="s23:l3" met="4" type="-+">Dat ghy of wat byzonders <rhyme label="a" type="m" corresp="#s23:l1">bent</rhyme>,</l>
        <l id="s23:l4" met="3" type="-+">Of wel toe kondt <rhyme label="b" type="f" corresp="#s23:l2">geraken</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Hoe meer de Zondt-vloedt wast, hoe <rhyme label="a" type="m">d'Arck</rhyme></l>
        <l id="s24:l2" met="3" type="-+">Zich hooger moet <rhyme label="b" type="f">verheffen</rhyme>:</l>
        <l id="s24:l3" met="4" type="-+">Te hooger roem heeft Godes <rhyme label="a" type="m" corresp="#s24:l1">Kerck</rhyme></l>
        <l id="s24:l4" met="3" type="-+">Hoe haer meer ramps koomt <rhyme label="b" type="f" corresp="#s24:l2">treffen</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Zijt ghy een Joseph; 't is niet <rhyme label="a" type="m">vreemt</rhyme>,</l>
        <l id="s25:l2" met="3" type="-+">Hoe zeer gh' op 't Deuchden padt <rhyme label="b" type="f">zijt</rhyme>,</l>
        <l id="s25:l3" met="4" type="-+">Datm' u en eer en ampt <rhyme label="a" type="m" corresp="#s25:l1">beneemt</rhyme></l>
        <l id="s25:l4" met="3" type="-+">En vanck'lijck in een gat <rhyme label="b" type="f" corresp="#s25:l2">smijt</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">Zijt ghy een David: licht krijght <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s26:l2" met="3" type="-+">Dat Saul al zijn <rhyme label="b" type="f">dagen</rhyme></l>
        <l id="s26:l3" met="4" type="-+">U houdt in kruys en <rhyme label="a" type="m" corresp="#s26:l1">zwervery</rhyme>,</l>
        <l id="s26:l4" met="3" type="-+">En nooyt rust van <rhyme label="b" type="f" corresp="#s26:l2">na-jagen</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="-+">Zijt ghy een Paulus: ziet of 't <rhyme label="a" type="m">dy</rhyme></l>
        <l id="s27:l2" met="3" type="-+">Daerom te zachter gaen <rhyme label="b" type="f">zal</rhyme>.</l>
        <l id="s27:l3" met="4" type="-+">Licht krijght ghy d'Engel Satan <rhyme label="a" type="m" corresp="#s27:l1">by</rhyme>,</l>
        <l id="s27:l4" met="3" type="-+">Die u met vuysten slaen <rhyme label="b" type="f" corresp="#s27:l2">zal</rhyme>.</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="4" type="-+">Zijt ghy fijn Goudt: 't kan u niet <rhyme label="a" type="m">scha'en</rhyme></l>
        <l id="s28:l2" met="3" type="-+">Al wordt gh'in 't vuer <rhyme label="b" type="f">bedoven</rhyme></l>
        <l id="s28:l3" met="4" type="-+">Om zevenwerven uyt te <rhyme label="a" type="m" corresp="#s28:l1">staen</rhyme></l>
        <l id="s28:l4" met="3" type="-+">De hit van 's Goudtsmidts <rhyme label="b" type="f" corresp="#s28:l2">oven</rhyme>.</l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="4" type="-+">Die godes goede wil <rhyme label="a" type="m">verstaet</rhyme>,</l>
        <l id="s29:l2" met="3" type="-+">En zich in 't laegh wil <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s29:l3" met="4" type="-+">Hy leydt op aerden, 't zy hoe 't <rhyme label="a" type="m" corresp="#s29:l1">gaet</rhyme>,</l>
        <l id="s29:l4" met="3" type="-+">Een rustigh lustigh <rhyme label="b" type="f" corresp="#s29:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="4" type="-+">Hy slacht d' ervaren <rhyme label="a" type="m">Musicijn</rhyme>,</l>
        <l id="s30:l2" met="3" type="-+">Die d'oor-vreuchdt niet wil <rhyme label="b" type="f">schenden</rhyme>:</l>
        <l id="s30:l3" met="4" type="-+">Breeckt hem een snaer, 't en geeft geen <rhyme label="a" type="m" corresp="#s30:l1">pijn</rhyme>,</l>
        <l id="s30:l4" met="3" type="-+">Hy zingt het liedt ten <rhyme label="b" type="f" corresp="#s30:l2">enden</rhyme>.</l>
      </lg>
      <lg id="s31" type="stanza">
        <l id="s31:l1" met="4" type="-+">Moet hy een moeyelijcke <rhyme label="a" type="m">rol</rhyme></l>
        <l id="s31:l2" met="3" type="-+">In 's werelts toon-spel <rhyme label="b" type="f">spelen</rhyme>:</l>
        <l id="s31:l3" met="4" type="-+">Een hert van Godt en Deuchde <rhyme label="a" type="m" corresp="#s31:l1">vol</rhyme></l>
        <l id="s31:l4" met="3" type="-+">Kan 't quaedt niet licht <rhyme label="b" type="f" corresp="#s31:l2">vervelen</rhyme>.</l>
      </lg>
      <lg id="s32" type="stanza">
        <l id="s32:l1" met="4" type="-+">O! die maer trouwlijck Godt <rhyme label="a" type="m">betrouwt</rhyme>!</l>
        <l id="s32:l2" met="3" type="-+">(Zijn Goedtheydt kan 't zoo <rhyme label="b" type="f">voegen</rhyme>!)</l>
        <l id="s32:l3" met="4" type="-+">Dat hy aen aerdtsch gemack <rhyme label="a" type="m" corresp="#s32:l1">onthoudt</rhyme>,</l>
        <l id="s32:l4" met="3" type="-+">Vergeldt hy door <rhyme label="b" type="f" corresp="#s32:l2">genoegen</rhyme>.</l>
      </lg>
      <lg id="s33" type="stanza">
        <l id="s33:l1" met="4" type="-+">Zoo hem de smaedt van menigh <rhyme label="a" type="m">mensch</rhyme></l>
        <l id="s33:l2" met="3" type="-+">Uytwendigh koomt <rhyme label="b" type="f">bestrijden</rhyme>:</l>
        <l id="s33:l3" met="4" type="-+">Die willigh lijdt, geniet zijn <rhyme label="a" type="m" corresp="#s33:l1">wensch</rhyme>,</l>
        <l id="s33:l4" met="3" type="-+">Trots alle die 't <rhyme label="b" type="f" corresp="#s33:l2">benijden</rhyme>.</l>
      </lg>
      <lg id="s34" type="stanza">
        <l id="s34:l1" met="4" type="-+">De smader lijdt geen grooter <rhyme label="a" type="m">smaedt</rhyme></l>
        <l id="s34:l2" met="3" type="-+">In 't diepste van zijn <rhyme label="b" type="f">zinnen</rhyme>,</l>
        <l id="s34:l3" met="4" type="-+">Dan dat hy 't hert van dien hy <rhyme label="a" type="m" corresp="#s34:l1">haet</rhyme></l>
        <l id="s34:l4" met="3" type="-+">Niet mede kan <rhyme label="b" type="f" corresp="#s34:l2">verwinnen</rhyme>.</l>
      </lg>
      <lg id="s35" type="stanza">
        <l id="s35:l1" met="4" type="-+">Daer 't bolwerck van <rhyme label="a" type="m">geduldicheydt</rhyme></l>
        <l id="s35:l2" met="3" type="-+">Steedts leyt voor 's vyandts <rhyme label="b" type="f">oogen</rhyme>,</l>
        <l id="s35:l3" met="4" type="-+">Hy merckt in 't eyndt, al is 't hem <rhyme label="a" type="m" corresp="#s35:l1">leyt</rhyme>,</l>
        <l id="s35:l4" met="3" type="-+">De zotheydt van zijn <rhyme label="b" type="f" corresp="#s35:l2">pogen</rhyme>.</l>
      </lg>
      <lg id="s36" type="stanza">
        <l id="s36:l1" met="4" type="-+">Dwang-werck verdient geen lof. o <rhyme label="a" type="m">neen</rhyme>:</l>
        <l id="s36:l2" met="3" type="-+">De vroom' in lijdens <rhyme label="b" type="f">ure</rhyme>,</l>
        <l id="s36:l3" met="4" type="-+">Valt willigh en van zelfs daer <rhyme label="a" type="m" corresp="#s36:l1">heen</rhyme></l>
        <l id="s36:l4" met="3" type="-+">Daer Godt en 't Lot hem <rhyme label="b" type="f" corresp="#s36:l2">sturen</rhyme>.</l>
      </lg>
      <lg id="s37" type="stanza">
        <l id="s37:l1" met="4" type="-+">'t Onlijdtzaem hert (door valsch <rhyme label="a" type="m">besluyt</rhyme>)</l>
        <l id="s37:l2" met="3" type="-+">Wil leet met leet wech <rhyme label="b" type="f">drijven</rhyme>:</l>
        <l id="s37:l3" met="4" type="-+">Een lijdtzaem mensch geraeckter <rhyme label="a" type="m" corresp="#s37:l1">uyt</rhyme></l>
        <l id="s37:l4" met="3" type="-+">Door willigh in te <rhyme label="b" type="f" corresp="#s37:l2">blijven</rhyme>.</l>
      </lg>
      <lg id="s38" type="stanza">
        <l id="s38:l1" met="4" type="-+">O! Lijdtzaemheydt volmaeckte <rhyme label="a" type="m">deuchdt</rhyme></l>
        <l id="s38:l2" met="3" type="-+">En Bandt van alle <rhyme label="b" type="f">Deuchden</rhyme>,</l>
        <l id="s38:l3" met="4" type="-+">Die u maer heeft, kan staêgh in <rhyme label="a" type="m" corresp="#s38:l1">vreuchdt</rhyme></l>
        <l id="s38:l4" met="3" type="-+">'t Geperste hert <rhyme label="b" type="f" corresp="#s38:l2">verjeuchden</rhyme>.</l>
      </lg>
      <lg id="s39" type="stanza">
        <l id="s39:l1" met="4" type="-+">O wenschelijckste <rhyme label="a" type="m">wensch'lijckheydt</rhyme>,</l>
        <l id="s39:l2" met="3" type="-+">Daer 't hert in Godts <rhyme label="b" type="f">gehengen</rhyme></l>
        <l id="s39:l3" met="4" type="-+">Zich rust, en boven <rhyme label="a" type="m" corresp="#s39:l1">mensch'lijckheydt</rhyme></l>
        <l id="s39:l4" met="3" type="-+">Den zwacken mensch kan <rhyme label="b" type="f" corresp="#s39:l2">brengen</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
