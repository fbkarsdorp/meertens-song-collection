  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hoe hebt ghy <rhyme label="a" type="m">ghefloreert</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Eel Nederlantsche <rhyme label="b" type="f">vrouwe</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Eer van v was <rhyme label="a" type="m" corresp="#s1:l1">gheweert</rhyme></l>
        <l id="s1:l4" met="3" type="-+">V heer die ghy waert <rhyme label="b" type="f" corresp="#s1:l2">trouwe</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ghesteenten ende <rhyme label="b" type="f" corresp="#s1:l2">gouwe</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Men vant by u in <rhyme label="c" type="m">ouervloet</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Oock alle <rhyme label="c" type="m" corresp="#s1:l6">goet</rhyme></l>
        <l id="s1:l8" met="5" type="-+">Datmen (Godt betert) niet meer en <rhyme label="c" type="m" corresp="#s1:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die schepen wt <rhyme label="a" type="m">Turckijen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En wt Indien <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Mochtmen gheladen <rhyme label="a" type="m" corresp="#s2:l1">sien</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Comen in menighe <rhyme label="b" type="f" corresp="#s2:l2">stede</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Als ghy daer saet in <rhyme label="b" type="f" corresp="#s2:l2">vrede</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Van Oost en West quam u die <rhyme label="c" type="m">vloot</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Daer cleyn en <rhyme label="c" type="m" corresp="#s2:l6">groot</rhyme></l>
        <l id="s2:l8" met="5" type="-+">Aen wan seer heerlijcken doen zijn <rhyme label="c" type="m" corresp="#s2:l6">broot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dat den Lantman <rhyme label="a" type="m">besayt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hadde, mocht hy vry <rhyme label="b" type="f">sacken</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Nu wert het gron <rhyme label="a" type="m" corresp="#s3:l1">ghemaeyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hoe salmer dan van <rhyme label="b" type="f" corresp="#s3:l2">backen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Die peerden sietmen voor <rhyme label="b" type="f" corresp="#s3:l2">smacken</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Die v Heer hebben wech <rhyme label="c" type="m">ghehaelt</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Godt toch <rhyme label="c" type="m" corresp="#s3:l6">betaelt</rhyme></l>
        <l id="s3:l8" met="5" type="-+">Die oorsaeck zijn dat die ghemeynte <rhyme label="c" type="m" corresp="#s3:l6">dwaelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Eens mocht den ambacht <rhyme label="a" type="m">man</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Voor zijn kinderen <rhyme label="b" type="f">winnen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat hy nu niet en <rhyme label="a" type="m" corresp="#s4:l1">can</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Maer met verstroyde <rhyme label="b" type="f" corresp="#s4:l2">sinnen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Moet crijch leeren <rhyme label="b" type="f" corresp="#s4:l2">beghinnen</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Den rentenier wert seer <rhyme label="c" type="m">belast</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Den coopman <rhyme label="c" type="m" corresp="#s4:l6">vast</rhyme></l>
        <l id="s4:l8" met="5" type="-+">Te Lant en See ouer al <rhyme label="c" type="m" corresp="#s4:l6">aenghetast</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Men siet nu tplatte <rhyme label="a" type="m">lant</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Gheheelijck onder <rhyme label="b" type="f">drucken</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Het wert gherooft, <rhyme label="a" type="m" corresp="#s5:l1">ghebrant</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En gheslaghen aen <rhyme label="b" type="f" corresp="#s5:l2">stucken</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Men sieget teesen en <rhyme label="b" type="f" corresp="#s5:l2">plucken</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Diuersche onder sconincx <rhyme label="c" type="m">naem</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Heeten <rhyme label="c" type="m" corresp="#s5:l6">eersaem</rhyme>:</l>
        <l id="s5:l8" met="5" type="-+">Godt betert, het gheschiet heel <rhyme label="c" type="m" corresp="#s5:l6">onbequaem</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Nu den heere achter <rhyme label="a" type="m">blijft</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Moeten daer veel <rhyme label="b" type="f">regieren</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Elck om tâ€™meeste <rhyme label="a" type="m" corresp="#s6:l1">schrijft</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Scheeren in veel <rhyme label="b" type="f" corresp="#s6:l2">manieren</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Die schaepen en <rhyme label="b" type="f" corresp="#s6:l2">versieren</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Vonden seer cloeck met schalcker <rhyme label="c" type="m">list</rhyme></l>
        <l id="s6:l7" met="2" type="-+">Om hare <rhyme label="c" type="m" corresp="#s6:l6">kist</rhyme>:</l>
        <l id="s6:l8" met="5" type="-+">Te vullen, waer wt dat rijst een grooten <rhyme label="c" type="m" corresp="#s6:l6">twist</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Prince Godt wilt eer <rhyme label="a" type="m">heer</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Verleenen wijs en <rhyme label="b" type="f">machtich</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Het doet het lant te <rhyme label="a" type="m" corresp="#s7:l1">seer</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Dus veel heeren <rhyme label="b" type="f" corresp="#s7:l2">waerachtich</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Zijt v volck eens <rhyme label="b" type="f" corresp="#s7:l2">ghedachtich</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Stelt doch tlant in zijn oude <rhyme label="c" type="m">graet</rhyme></l>
        <l id="s7:l7" met="2" type="-+">Dat qualijck <rhyme label="c" type="m" corresp="#s7:l6">staet</rhyme>:</l>
        <l id="s7:l8" met="5" type="-+">Ghy zijt o Godt haer troost en <rhyme label="c" type="m" corresp="#s7:l6">toeuerlaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
