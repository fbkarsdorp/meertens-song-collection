  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Laet doch mijn hert in uwe <rhyme label="a" type="m">min</rhyme></l>
        <l id="s1:l2" met="4" type="-+">O soete Iesu! innigh <rhyme label="b" type="f">blaken</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Wilt trecken mijn gemoedt en <rhyme label="a" type="m" corresp="#s1:l1">zin</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van all' des wereldts yd'le <rhyme label="b" type="f" corresp="#s1:l2">saken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die door uw' min sich voelt <rhyme label="a" type="m">geraeckt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Heeft in de wereldt geen <rhyme label="b" type="f">behagen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Haer soetigheidt hem bitter <rhyme label="a" type="m" corresp="#s2:l1">smaeckt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Haer lagchen geeft hem stof tot <rhyme label="b" type="f" corresp="#s2:l2">klagen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Indien de mensch die 't aerdtsche <rhyme label="a" type="m">mindt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">De soetheidt uywer liefde <rhyme label="b" type="f">wiste</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Hy sloegh sijn dwaesheidt in de <rhyme label="a" type="m" corresp="#s3:l1">windt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En gingh tot u, o Iesu <rhyme label="b" type="f" corresp="#s3:l2">Christe</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer nademael sijn ydel <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s4:l2" met="4" type="-+">In dwase wellust, aerdtsche <rhyme label="b" type="f">sorgen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En tijdtlick goedt soo licht <rhyme label="a" type="m" corresp="#s4:l1">verwert</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Is deese soetheidt hem <rhyme label="b" type="f" corresp="#s4:l2">verborgen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Uw soetigheidt te boven <rhyme label="a" type="m">gaet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Het soetste soet dat is te <rhyme label="b" type="f">vinden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Sy kan verdruckingh, quellingh, <rhyme label="a" type="m" corresp="#s5:l1">haet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ia allen tegenspoedt <rhyme label="b" type="f" corresp="#s5:l2">verslinden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Soo bitter is geen <rhyme label="a" type="m">bitterheidt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Of uwe min kan die <rhyme label="b" type="f">versoeten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wanneer het hert van droefheidt <rhyme label="a" type="m" corresp="#s6:l1">schreidt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Komt sy het lieffelick <rhyme label="b" type="f" corresp="#s6:l2">ontmoeten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Iesu, die mijn ziel <rhyme label="a" type="m">verheught</rhyme>.</l>
        <l id="s7:l2" met="4" type="-+">Ia my verruckt schier uit my <rhyme label="b" type="f">selven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Wilt in dees' Hemelsche <rhyme label="a" type="m" corresp="#s7:l1">geneught</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Mijn herte vast en sterck <rhyme label="b" type="f" corresp="#s7:l2">bedelven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Tot dat gy my sult <rhyme label="a" type="m">t'eenemael</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Met uwe soetigheidt <rhyme label="b" type="f">versaden</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Hier boven in des Hemels <rhyme label="a" type="m" corresp="#s8:l1">sael</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Daer volheidt is van u <rhyme label="b" type="f" corresp="#s8:l2">genaden</rhyme>.</l>
      </lg>
    </lg>
  </text>
