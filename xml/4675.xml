  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt mo-gen zich de <rhyme label="a" type="f">Papen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Berommen van <rhyme label="b" type="m">Autaer</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Nadien all’ Christus <rhyme label="a" type="f" corresp="#s1:l1">knapen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Byzonder en te <rhyme label="b" type="m" corresp="#s1:l2">gaer</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Door Godes <rhyme label="c" type="m">hand</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Zoo hoog nu zijn <rhyme label="d" type="f">verhe-ven</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Dat zy hem mo-gen <rhyme label="d" type="f" corresp="#s1:l6">ge-ven</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Een dienst van <rhyme label="c" type="m" corresp="#s1:l5">offerand</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy heeft ons <rhyme label="a" type="f">uitgelezen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Een Koninglijk <rhyme label="b" type="m">geslagt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">En Priesteren doen <rhyme label="a" type="f" corresp="#s2:l1">wezen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van zijn grootdade <rhyme label="b" type="m" corresp="#s2:l2">magt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Leest Petrum, <rhyme label="c" type="m">leest</rhyme></l>
        <l id="s2:l6" met="3" type="-+">De Texten, die ons <rhyme label="d" type="f">geven</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Een vrijdom om te <rhyme label="d" type="f" corresp="#s2:l6">leven</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Nae vryicheyd van <rhyme label="c" type="m" corresp="#s2:l5">Geest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O volken <rhyme label="a" type="f">uitverkoren</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Dit Priesterdom <rhyme label="b" type="m">royael</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Had God ook van te <rhyme label="a" type="f" corresp="#s3:l1">voren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Deur Moises oude <rhyme label="b" type="m" corresp="#s3:l2">tael</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Aen’t Ioodsche <rhyme label="c" type="m">volk</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Gegeven; maer <rhyme label="d" type="f">midsdezen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Mogt yder een niet <rhyme label="d" type="f" corresp="#s3:l6">wezen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Of Prins, of Godes <rhyme label="c" type="m" corresp="#s3:l5">tolk</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Het was toch aenden <rhyme label="a" type="f">Koning</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ozias wel te <rhyme label="b" type="m">zien</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Als hy in Godes <rhyme label="a" type="f" corresp="#s4:l1">woning</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hem offerwerk dorst <rhyme label="b" type="m" corresp="#s4:l2">bien</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Den armen  <rhyme label="c" type="m">dwaes</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Gevoelde zijn <rhyme label="d" type="f">vermeten</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Van stonden aen, <rhyme label="d" type="f" corresp="#s4:l6">gesmeten</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Met lazery, <rhyme label="c" type="m" corresp="#s4:l5">helaas</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wel tot een zeker <rhyme label="a" type="f">teyken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat niemand <rhyme label="b" type="m">offerand</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">En mag bestaen te <rhyme label="a" type="f" corresp="#s5:l1">reyken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Als met gewijdde <rhyme label="b" type="m" corresp="#s5:l2">hand</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">En die daer <rhyme label="c" type="m">toe</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Als Aron is <rhyme label="d" type="f">verkoren</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">En wil hy niet <rhyme label="d" type="f" corresp="#s5:l6">verloren</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Gaen deur des Heren <rhyme label="c" type="m" corresp="#s5:l5">roe</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De waerelijkke <rhyme label="a" type="f">menschen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Op off’ren niet te <rhyme label="b" type="m">min</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Gebeden, Loven, <rhyme label="a" type="f" corresp="#s6:l1">wenschen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Met een versturve <rhyme label="b" type="m" corresp="#s6:l2">zin</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">End’ alles <rhyme label="c" type="m">wes</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Men God tot <rhyme label="d" type="f">offerande</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Met geestelijkke <rhyme label="d" type="f" corresp="#s6:l6">handen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Geeft nae ’t Romeinse <rhyme label="c" type="m" corresp="#s6:l5">les</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer tot het <rhyme label="a" type="f">Sacrficy</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van ’t nieuwe <rhyme label="b" type="m">Testament</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Het Priesterlijk <rhyme label="a" type="f" corresp="#s7:l1">Officy</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Alleen moet zijn <rhyme label="b" type="m" corresp="#s7:l2">gekendt</rhyme>:</l>
        <l id="s7:l5" met="2" type="-+">Om aen’t <rhyme label="c" type="m">Autaer</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">’t Welk Paulus ons <rhyme label="d" type="f">verklaerde</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Voor Godes hoge <rhyme label="d" type="f" corresp="#s7:l6">waerde</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Ons vuil te maken <rhyme label="c" type="m" corresp="#s7:l5">klaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Zoo wie nu Petrus <rhyme label="a" type="f">woorden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Noch hoger wil <rhyme label="b" type="m">verstaen</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Om Priesterlijkke <rhyme label="a" type="f" corresp="#s8:l1">oorde</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Daer uit te nemen <rhyme label="b" type="m" corresp="#s8:l2">aen</rhyme>.</l>
        <l id="s8:l5" met="2" type="-+">Die gae met <rhyme label="c" type="m">een</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Zijn Koningrijk <rhyme label="d" type="f">betoonen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Met opgezette <rhyme label="d" type="f" corresp="#s8:l6">Kroonen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">En roo scherlake <rhyme label="c" type="m" corresp="#s8:l5">kle’en</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Want’t een zoo wel als ’t <rhyme label="a" type="f">ander</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Schrijft hy den Christen <rhyme label="b" type="m">toe</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Laet hechten aen <rhyme label="a" type="f" corresp="#s9:l1">malkander</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Dan staf en <rhyme label="b" type="m" corresp="#s9:l2">Konings-roe</rhyme>.</l>
        <l id="s9:l5" met="2" type="-+">Een aerdig <rhyme label="c" type="m">werk</rhyme>!</l>
        <l id="s9:l6" met="3" type="-+">Maer ziet eens hoe de <rhyme label="d" type="f">Hoven</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Haer zullen wel <rhyme label="d" type="f" corresp="#s9:l6">beloven</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Van een zoo nieuwen <rhyme label="c" type="m" corresp="#s9:l5">Klerk</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Houd u dan vry te <rhyme label="a" type="f">vrede</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Met d’offerand <rhyme label="b" type="m">voordaen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Van loffelijkke <rhyme label="a" type="f" corresp="#s10:l1">zeden</rhyme>;</l>
        <l id="s10:l4" met="3" type="-+">En laet de Kerk <rhyme label="b" type="m" corresp="#s10:l2">begaen</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Met al dat <rhyme label="c" type="m">haer</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Belast is en <rhyme label="d" type="f">bevolen</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Van lering, en van <rhyme label="d" type="f" corresp="#s10:l6">scholen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Van offer, end’ <rhyme label="c" type="m" corresp="#s10:l5">Autaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
