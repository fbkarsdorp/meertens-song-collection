  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Tra renn m s ich tag vnnd <rhyme label="a" type="m">nacht</rhyme> /</l>
        <l id="s1:l2" met="3" type="-+">vnnd tragen groß <rhyme label="b" type="f">verlangenn</rhyme> /</l>
        <l id="s1:l3" met="4" type="-+">Nach einer die mir nitt werden <rhyme label="a" type="m" corresp="#s1:l1">magh</rhyme> /</l>
        <l id="s1:l4" met="3" type="-+">Sei hatt mein hertz <rhyme label="b" type="f" corresp="#s1:l2">vmbfangenn</rhyme> /</l>
        <l id="s1:l5" met="4" type="-+">D rchw ndt trag sei eß <rhyme label="c" type="m">mannichfaltt</rhyme> /</l>
        <l id="s1:l6" met="4" type="-+">Jch sehe sei nitt z  aller st <rhyme label="c" type="m" corresp="#s1:l5">ndt</rhyme> /</l>
        <l id="s1:l7" met="3" type="-+">Gott woll sei mir beh <rhyme label="b" type="f" corresp="#s1:l2">tenn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Jch schlaffen ich wachen / oder was ich th <rhyme label="a" type="m">n</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Sie ligtt mir jn dem <rhyme label="b" type="f">Synne</rhyme> /</l>
        <l id="s2:l3" met="4" type="-+">Sei machett mein J nges hertze <rhyme label="a" type="m" corresp="#s2:l1">fro</rhyme> /</l>
        <l id="s2:l4" met="3" type="-+">sie kan woll schmertze <rhyme label="b" type="f" corresp="#s2:l2">vberwindenn</rhyme> /</l>
        <l id="s2:l5" met="4" type="-+">Daß hatt ir clare schein <rhyme label="c" type="m">gethann</rhyme> /</l>
        <l id="s2:l6" met="4" type="-+">Ach Gott mochtt sei jn meinem ermlein <rhyme label="c" type="m" corresp="#s2:l5">empfan</rhyme> /</l>
        <l id="s2:l7" met="3" type="-+">Jch leiß den Kleffer <rhyme label="b" type="f" corresp="#s2:l2">klaffenn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ein Kleffer m s ein Kleffer <rhyme label="a" type="m">sein</rhyme> /</l>
        <l id="s3:l2" met="3" type="-+">bei tagh vnnd a ch bei <rhyme label="b" type="f">nachte</rhyme> /</l>
        <l id="s3:l3" met="4" type="-+">So w nsch ich der hertzallerliebstenn <rhyme label="a" type="m" corresp="#s3:l1">mein</rhyme> /</l>
        <l id="s3:l4" met="3" type="-+">Vill thausentt g etter <rhyme label="b" type="f" corresp="#s3:l2">nachte</rhyme> /</l>
        <l id="s3:l5" met="4" type="-+">Jch w nschenn ir vill mitt  <rhyme label="c" type="m">stattigkeitt</rhyme> /</l>
        <l id="s3:l6" met="4" type="-+">Sei ist mein fre dtt / verdribtt mein <rhyme label="c" type="m" corresp="#s3:l5">leidtt</rhyme> /</l>
        <l id="s3:l7" met="3" type="-+">ohn sei kan ich nitt <rhyme label="b" type="f" corresp="#s3:l2">schertzen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hertz lieb haltt dich stetz z  <rhyme label="a" type="m">mir</rhyme> /</l>
        <l id="s4:l2" met="3" type="-+">vnnd laß nitt verf <rhyme label="b" type="f">renn</rhyme> /</l>
        <l id="s4:l3" met="4" type="-+">Ob die falschenn kleffer khemenn z  <rhyme label="a" type="m" corresp="#s4:l1">dir</rhyme></l>
        <l id="s4:l4" met="3" type="-+">nitt <rhyme label="b" type="f" corresp="#s4:l2">verlegenn</rhyme> /</l>
        <l id="s4:l5" met="4" type="-+">Vnnd setz dein trew ahn einenn <rhyme label="c" type="m">ortt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">gle b nitt ahn der kleffer <rhyme label="c" type="m" corresp="#s4:l5">wortt</rhyme> /</l>
        <l id="s4:l7" met="3" type="-+">Vnnd laß dich nitt <rhyme label="b" type="f" corresp="#s4:l2">bedregenn</rhyme>.</l>
      </lg>
    </lg>
