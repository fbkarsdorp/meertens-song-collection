    <melody>Hoe zal ik u vergelden</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe sal ik u <rhyme label="a" type="f">vergelden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Uw groote goetheit <rhyme label="b" type="m">al</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Hoe sal ik 't groot <rhyme label="b" type="m" corresp="#s1:l2">getal</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van uwe deugden <rhyme label="a" type="f" corresp="#s1:l1">melden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Fonteyne der <rhyme label="c" type="f">genaden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">O Jesu, die soo <rhyme label="d" type="m">seer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Ons doet met heyl en <rhyme label="d" type="m" corresp="#s1:l6">eer</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Geduerigh <rhyme label="c" type="f" corresp="#s1:l5">overladen</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wy moesten gaen <rhyme label="a" type="f">verloren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van alles naekt <rhyme label="b" type="m">ontbloot</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer ghy quaemt ons in <rhyme label="b" type="m" corresp="#s2:l2">noot</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ja in den doot <rhyme label="a" type="f" corresp="#s2:l1">verhooren</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Uw goetheyt gingh <rhyme label="c" type="f">beschikken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Een werk seer <rhyme label="d" type="m">wonderbaer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Eer ghy ons in 't <rhyme label="d" type="m" corresp="#s2:l6">gevaer</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Alsoo soudt laten <rhyme label="c" type="f" corresp="#s2:l5">stikken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Opdat wy souden <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hebt ghy soo trouw en <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Uw lichaem end uw <rhyme label="b" type="m" corresp="#s3:l2">bloet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Tot spijs en drank <rhyme label="a" type="f" corresp="#s3:l1">gegeven</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Wat soudt ghy voor den <rhyme label="c" type="f">menschen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Doch hebben meer <rhyme label="d" type="m">gedaen</rhyme>?</l>
        <l id="s3:l7" met="3" type="-+">Het is met haer <rhyme label="d" type="m" corresp="#s3:l6">gegaen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Verr' boven al haer <rhyme label="c" type="f" corresp="#s3:l5">wenschen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als wy by-na <rhyme label="a" type="f">versmachten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van dorst en <rhyme label="b" type="m">hongers-noot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Soo geeft dit heyligh <rhyme label="b" type="m" corresp="#s4:l2">broot</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En drank de ziel veel <rhyme label="a" type="f" corresp="#s4:l1">krachten</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Op een veel schoonder <rhyme label="c" type="f">wijse</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Als doe Elias <rhyme label="d" type="m">at</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En tot aen Horeb <rhyme label="d" type="m" corresp="#s4:l6">tradt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Door kracht van 's Engels <rhyme label="c" type="f" corresp="#s4:l5">spijse</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Godt doet hier door den <rhyme label="a" type="f">synen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van kracht tot kracht gaen <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Tot dat s' aen Zions <rhyme label="b" type="m" corresp="#s5:l2">oort</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met vreugt voor hem <rhyme label="a" type="f" corresp="#s5:l1">verschynen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">O Jesu, ik <rhyme label="c" type="f">gevoele</rhyme></l>
        <l id="s5:l6" met="3" type="-+">De kracht van dese <rhyme label="d" type="m">spijs</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Op een verborgen <rhyme label="d" type="m" corresp="#s5:l6">wijs</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Door all mijn leden <rhyme label="c" type="f" corresp="#s5:l5">woelen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy hebt my nu <rhyme label="a" type="f">gegeven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Een zegel van 't <rhyme label="b" type="m">verbondt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat ik ben t'aller <rhyme label="b" type="m" corresp="#s6:l2">stondt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In 's levens boek <rhyme label="a" type="f" corresp="#s6:l1">geschreven</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Ja ghy doet my nu <rhyme label="c" type="f">smaken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">De vaste <rhyme label="d" type="m">sekerheyt</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Van mijne <rhyme label="d" type="m" corresp="#s6:l6">Saligheyt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Waer toe ik sal <rhyme label="c" type="f" corresp="#s6:l5">geraken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Nu ghy my hebt doen <rhyme label="a" type="f">eten</rhyme></l>
        <l id="s7:l2" met="3" type="-+">De eerste vruchten <rhyme label="b" type="m">van</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Het Hemelsch <rhyme label="b" type="m" corresp="#s7:l2">Canaan</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Kan ik voorseker <rhyme label="a" type="f" corresp="#s7:l1">weten</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Dat ik ten eeuw'gen <rhyme label="c" type="f">tyden</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Met Abr'ams kind'ren <rhyme label="d" type="m">all</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Aen uwe tafel <rhyme label="d" type="m" corresp="#s7:l6">sal</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Ten vollen my <rhyme label="c" type="f" corresp="#s7:l5">verblyden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Versterkt my t' allen <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Soo door dees' spijs en <rhyme label="b" type="m">drank</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat ik mijn leven <rhyme label="b" type="m" corresp="#s8:l2">lank</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Mijn kruys magh vrolik <rhyme label="a" type="f" corresp="#s8:l1">dragen</rhyme>;</l>
        <l id="s8:l5" met="3" type="-+">Soo dat ik niet en <rhyme label="c" type="f">achte</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Voortaen op eenigh <rhyme label="d" type="m">dingh</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">'t Zy groot of 't zy <rhyme label="d" type="m" corresp="#s8:l6">geringh</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Maer 't all kloekmoedigh <rhyme label="c" type="f" corresp="#s8:l5">wachte</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Heer, laet my als een <rhyme label="a" type="f">zegel</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Zijn op uw hert <rhyme label="b" type="m">geset</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">En stelt my uwe <rhyme label="b" type="m" corresp="#s9:l2">wet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Geduerigh tot een <rhyme label="a" type="f" corresp="#s9:l1">regel</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Waer na ik all mijn <rhyme label="c" type="f">gangen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Soo stieren magh van <rhyme label="d" type="m">nu</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Dat ik altijt aen <rhyme label="d" type="m" corresp="#s9:l6">u</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Mijn Heyland, vast blyv' <rhyme label="c" type="f" corresp="#s9:l5">hangen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
