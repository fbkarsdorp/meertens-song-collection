  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">AL de Meysjens van dit <rhyme label="a" type="f">Dorpjen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Zyn verlieft op myn <rhyme label="b" type="m">persoon</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Maer 't is goedtjen om een <rhyme label="a" type="f" corresp="#s1:l1">worpjen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Toe te gheven, en so <rhyme label="b" type="m" corresp="#s1:l2">schoon</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dat ick zweir op d'eene <rhyme label="c" type="f">zyde</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Te verbranden in haer <rhyme label="d" type="m">min</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En dan we'er verkeert van <rhyme label="d" type="m" corresp="#s1:l6">sin</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Het teghen-deel <rhyme label="c" type="f" corresp="#s1:l5">belyde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">D'eene seght dat sy moet <rhyme label="a" type="f">suchten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Wanneer sy my niet en <rhyme label="b" type="m">siet</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">D'ander dat haer ziel' wilt <rhyme label="a" type="f" corresp="#s2:l1">vluchten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Door den brandt die haer <rhyme label="b" type="m" corresp="#s2:l2">verdriet</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Schoon ick zweer, op d'eene <rhyme label="c" type="f">zyde</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Te verbranden in haer <rhyme label="d" type="m">min</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En dan we'er verkort van <rhyme label="d" type="m" corresp="#s2:l6">sin</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Het teghendeel <rhyme label="c" type="f" corresp="#s2:l5">belyde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">3.Soo daer een ghebuer voor-by <rhyme label="a" type="f">gaet</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die ick gheren spreken <rhyme label="b" type="m">wou</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sien ick dat in Jalousy <rhyme label="a" type="f" corresp="#s3:l1">slaet</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Al dat on-ghebonden <rhyme label="b" type="m" corresp="#s3:l2">grou</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Schoon ick zweer, op d'eene <rhyme label="c" type="f">zyde</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Te verbranden in haer <rhyme label="d" type="m">min</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En dan weer' verkeert van <rhyme label="d" type="m" corresp="#s3:l6">sin</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Het teghen-deel <rhyme label="c" type="f" corresp="#s3:l5">belyde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Onder al dees soete <rhyme label="a" type="f">Meysjens</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Vind' ick mynen gheest <rhyme label="b" type="m">vernoeght</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Liefde maeckt haer zwack als <rhyme label="a" type="f" corresp="#s4:l1">rysjens</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Die-men naer syn wenschingh' <rhyme label="b" type="m" corresp="#s4:l2">voeght</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Want ick zweer op d'eene <rhyme label="c" type="f">zyde</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Te verbranden in haer <rhyme label="d" type="m">min</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">En dan weer verkeert van <rhyme label="d" type="m" corresp="#s4:l6">sin</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Het teghen-deel <rhyme label="c" type="f" corresp="#s4:l5">belyde</rhyme>.</l>
      </lg>
    </lg>
  </text>
