  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GLorieus van Lichame, mAgnus <rhyme label="a" type="f">redemte</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">Schoon blinckende <rhyme label="a" type="f" corresp="#s1:l1">bequame</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Gheheel <rhyme label="b" type="m">onsterffelijck</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Van vreughden <rhyme label="b" type="m" corresp="#s1:l3">rijck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Och met wat grooter vreughden, Agnus <rhyme label="a" type="f">rode</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Die vroukens haer <rhyme label="a" type="f" corresp="#s2:l1">verheughden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Doen zy hem saghen <rhyme label="b" type="m">daer</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Verresen <rhyme label="b" type="m" corresp="#s2:l3">claer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Siet met vrolijckheden{tab}{tab}Dic <rhyme label="a" type="f">nobis</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Hebben zy hem <rhyme label="a" type="f" corresp="#s3:l1">aenghebeden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Neder ghevallen ter <rhyme label="b" type="m">Aerden</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Voor zijn voeten reyn met grooter <rhyme label="b" type="m" corresp="#s3:l3">waerden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Laet ons oock met de Vrouwen Mors &amp; <rhyme label="a" type="f">vita</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Hem loven sonder <rhyme label="a" type="f" corresp="#s4:l1">flouwen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die nu verresen <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Certeyn <rhyme label="b" type="m" corresp="#s4:l3">ghewis</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy is het Lam Gods crachtigh, Mors &amp; <rhyme label="a" type="f">vita</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">Die de Schapen <rhyme label="a" type="f" corresp="#s5:l1">warachtigh</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Verlost heeft met zijn <rhyme label="b" type="m">bloet</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Wt liefden <rhyme label="b" type="m" corresp="#s5:l3">soet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Lof moet hy ontfanghen Dic <rhyme label="a" type="f">nobis</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Die voor ons heeft <rhyme label="a" type="f" corresp="#s6:l1">ghehanghen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">In het Cruys heeft hy <rhyme label="b" type="m">verslonden</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Hel, Duyvel, en doot <rhyme label="b" type="m" corresp="#s6:l3">verwonnen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hem zy hoogheyt en glorie Mors &amp; <rhyme label="a" type="f">vita</rhyme>.</l>
        <l id="s7:l2" met="3" type="-+">Die ons door zijn <rhyme label="a" type="f" corresp="#s7:l1">victorie</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Een plaetse heeft <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Van <rhyme label="b" type="m" corresp="#s7:l3">vrolijckheyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Door zijnen doot verheven, Mors &amp; <rhyme label="a" type="f">vita</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">Sullen wy eeuwigh <rhyme label="a" type="f" corresp="#s8:l1">leven</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Met hem in vreughden <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">In 'sHemels <rhyme label="b" type="m" corresp="#s8:l3">throon</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hierom laet ons prijsen Dic <rhyme label="a" type="f">nobis</rhyme>.</l>
        <l id="s9:l2" met="3" type="-+">Hem lof en eer <rhyme label="a" type="f" corresp="#s9:l1">bewijsen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Die leeft en regneert hier <rhyme label="b" type="m">boven</rhyme></l>
        <l id="s9:l4" met="2" type="-+">Met Hemelschen sangh wy hem nu <rhyme label="b" type="m" corresp="#s9:l3">loven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Glorie, lof, en eere, Mors &amp; <rhyme label="a" type="f">vita</rhyme>.</l>
        <l id="s10:l2" met="3" type="-+">Sy u Godt onsen <rhyme label="a" type="f" corresp="#s10:l1">Heere</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die nu verresen <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Op desen <rhyme label="b" type="m" corresp="#s10:l3">tijt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Nu in der Paesschen Feesten Mors &amp; <rhyme label="a" type="f">vita</rhyme>.</l>
        <l id="s11:l2" met="3" type="-+">Met de Hemelsche <rhyme label="a" type="f" corresp="#s11:l1">Gheesten</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Singhen sy vroegh en <rhyme label="b" type="m">spa</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+"><rhyme label="b" type="m" corresp="#s11:l3">Alleluya</rhyme>.</l>
      </lg>
    </lg>
  </text>
