  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAeckt op ghy Christen <rhyme label="a" type="f">Alle</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Waeckt op met gantschen <rhyme label="b" type="m">vlijt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">In desen Jammer <rhyme label="a" type="f" corresp="#s1:l1">Daele</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Waeckt op, T'is meer dan <rhyme label="b" type="m" corresp="#s1:l2">Tijdt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die HEER sal haeste <rhyme label="c" type="f">comen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die Dach wil Auondt <rhyme label="d" type="m">haen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die Sondaers sal hy <rhyme label="c" type="f" corresp="#s1:l5">Verdoemen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wie mach voor hem <rhyme label="d" type="m" corresp="#s1:l6">bestaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Gheen Tijdtlijck Goet mach <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wijsheyt noch hooghe <rhyme label="b" type="m">Moet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ghy moet het al <rhyme label="a" type="f" corresp="#s2:l1">verlaten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als coemt die bitter <rhyme label="b" type="m" corresp="#s2:l2">Doot</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Al zijt ghy schoon van <rhyme label="c" type="f">Verven</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Al zijt ghy Jonck end <rhyme label="d" type="m">Rijck</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Nochtans moet ghy <rhyme label="c" type="f" corresp="#s2:l5">Verderven</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">In een so cleynen <rhyme label="d" type="m" corresp="#s2:l6">Tijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gods Woort is ons <rhyme label="a" type="f">ghegeven</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Door syn <rhyme label="b" type="m">Barmherticheyt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Om daer nae recht te <rhyme label="a" type="f" corresp="#s3:l1">Leven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">End maecken ons <rhyme label="b" type="m" corresp="#s3:l2">bereydt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">So laet ons dat <rhyme label="c" type="f">Aenvaeten</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">End blijven vaste daer <rhyme label="d" type="m">aen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">In dien wy t'selve <rhyme label="c" type="f" corresp="#s3:l5">verlaeten</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">So ist met ons <rhyme label="d" type="m" corresp="#s3:l6">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Och waer hy noyt <rhyme label="a" type="f">gheboren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die GOdes Woort <rhyme label="b" type="m">veracht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Het is met hem <rhyme label="a" type="f" corresp="#s4:l1">verloren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hy wandelt al in der <rhyme label="b" type="m" corresp="#s4:l2">Nacht</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Vol Sonden end vol <rhyme label="c" type="f">schande</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">End schimpt met GOdes <rhyme label="d" type="m">Woort</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">O Wee Eewich <rhyme label="c" type="f" corresp="#s4:l5">Elende</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Syn Ziel is deerlijck <rhyme label="d" type="m" corresp="#s4:l6">Vermoort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daerom ghy Christen <rhyme label="a" type="f">Alle</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die hier te saemen <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Laet uwen Hoochmoet <rhyme label="a" type="f" corresp="#s5:l1">vallen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">End wacht wel op den <rhyme label="b" type="m" corresp="#s5:l2">Tijdt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Wilt ghy by GOde <rhyme label="c" type="f">Leven</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Gaet soecken d'Eewighe <rhyme label="d" type="m">Goet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Hy salt u Rijckelijck <rhyme label="c" type="f" corresp="#s5:l5">geven</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">End helpen wt aller <rhyme label="d" type="m" corresp="#s5:l6">Noot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die Armen by u <rhyme label="a" type="f">woonen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Daer wilt u Ooghen <rhyme label="b" type="m">Opslaen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Sy moghen u <rhyme label="a" type="f" corresp="#s6:l1">verschoonen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Als ghy voort Ordeel <rhyme label="b" type="m" corresp="#s6:l2">staen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Gods Rijck al ist een <rhyme label="c" type="f">Gaeve</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ghenaed' end gheenen <rhyme label="d" type="m">Loon</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Nochtans d'Oprecht <rhyme label="c" type="f" corresp="#s6:l5">Gheloove</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Gaet in der Liefden <rhyme label="d" type="m" corresp="#s6:l6">Thoon</rhyme>.</l>
      </lg>
    </lg>
  </text>
