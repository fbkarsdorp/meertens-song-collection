  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ik zit nu steeds te <rhyme label="a" type="f">zuchten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En overdenk myn <rhyme label="b" type="m">ramp</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ã´ Hemel! waar zal ik <rhyme label="a" type="f" corresp="#s1:l1">vluchten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Benauwd my aan alle <rhyme label="b" type="m" corresp="#s1:l2">kant</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Aan de Over van dit <rhyme label="a" type="f">water</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daar staat een stillen <rhyme label="b" type="m">Rots</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Och! och myn lieve <rhyme label="a" type="f" corresp="#s2:l1">Vader</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Ging wandelen op die <rhyme label="b" type="m" corresp="#s2:l2">Rots</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maar ziet een weinig <rhyme label="a" type="f">geleeden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Stort hy van boven <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Myn Broeder met rassche <rhyme label="a" type="f" corresp="#s3:l1">schreeden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Sprong na en was niet <rhyme label="b" type="m" corresp="#s3:l2">meer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Myn moeder toen zy dit <rhyme label="a" type="f">hoorden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die stierf van de <rhyme label="b" type="m">schrik</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Het lot was my <rhyme label="a" type="f" corresp="#s4:l1">beschooren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wat droevig <rhyme label="b" type="m" corresp="#s4:l2">ogenblik</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wat ramp wierd my <rhyme label="a" type="f">beschooren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In dit noodlottig <rhyme label="b" type="m">uur</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">'k Heb Vader en Moeder <rhyme label="a" type="f" corresp="#s5:l1">verloren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En ook myn lieve <rhyme label="b" type="m" corresp="#s5:l2">Broer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ik die als Weez' moet <rhyme label="a" type="f">zwerven</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Geen Vriend nog Maagden <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En zo moet ik nu <rhyme label="a" type="f" corresp="#s6:l1">sterven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Van droefheid en <rhyme label="b" type="m" corresp="#s6:l2">hartzeer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Nu moet ik eenzaam <rhyme label="a" type="f">deelen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ach! wat rampzalig <rhyme label="b" type="m">iot</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Door bosschen, velden, <rhyme label="a" type="f" corresp="#s7:l1">hoolen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Doch ik vertrouw op <rhyme label="b" type="m" corresp="#s7:l2">God</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die zal myn troost toe <rhyme label="a" type="f">zenden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zo lang ik leef op <rhyme label="b" type="m">aard</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Waar ik my keer of <rhyme label="a" type="f" corresp="#s8:l1">wenden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hy is 't die my <rhyme label="b" type="m" corresp="#s8:l2">bewaard</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ik zal my dus <rhyme label="a" type="f">verlaaten</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Op hem die 't Al <rhyme label="b" type="m">gebied</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Geen troost der Mensch kan <rhyme label="a" type="f" corresp="#s9:l1">baten</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Van al myn groot <rhyme label="b" type="m" corresp="#s9:l2">verdriet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Vaarwel! dan Waerelds <rhyme label="a" type="f">zorgen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Vaarwel dan ydele <rhyme label="b" type="m">hoop</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Hy zorgt voor den <rhyme label="a" type="f" corresp="#s10:l1">morgen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Van myne <rhyme label="b" type="m" corresp="#s10:l2">Levensloop</rhyme>.</l>
      </lg>
    </lg>
