    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">AL Abrams Mannelijck <rhyme label="a" type="m">geslacht</rhyme></l>
        <l id="s1:l2" met="4" type="-+">In de oude Wet voort <rhyme label="a" type="m" corresp="#s1:l1">gebracht</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Out zijnde maer acht <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Besne'en most <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Met groote <rhyme label="c" type="m" corresp="#s1:l4">pijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Na Godes <rhyme label="b" type="f" corresp="#s1:l3">welbehagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Door dit teken, en zwaer <rhyme label="a" type="m">ellendt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">By Godt en mensch was die <rhyme label="a" type="m" corresp="#s2:l1">bekent</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als een van Abrams <rhyme label="b" type="f">vrinden</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Dat hy maer <rhyme label="c" type="m">een</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Godt; anders <rhyme label="c" type="m" corresp="#s2:l4">geen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gheloofde , en <rhyme label="b" type="f" corresp="#s2:l3">beminden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Door de besnijdenis <rhyme label="a" type="m">d'erf-zondt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">(Na Godes Wett' en vast <rhyme label="a" type="m" corresp="#s3:l1">verbondt</rhyme>)</l>
        <l id="s3:l3" met="3" type="-+">Worde dit kindt <rhyme label="b" type="f">vergeven</rhyme>;</l>
        <l id="s3:l4" met="2" type="-+">'t Was groot van <rhyme label="c" type="m">faem</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Ende <rhyme label="c" type="m" corresp="#s3:l4">bequaem</rhyme></l>
        <l id="s3:l6" met="3" type="-+">t' Ontfange 't eeuwigh <rhyme label="b" type="f" corresp="#s3:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Ziel van Iesu, Godes <rhyme label="a" type="m">Zoon</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Boven de Zon en Maen is <rhyme label="a" type="m" corresp="#s4:l1">schoon</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Is reyn van alle <rhyme label="b" type="f">smetten</rhyme>;</l>
        <l id="s4:l4" met="2" type="-+">Is noyt <rhyme label="c" type="m">gewondt</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Met Adams <rhyme label="c" type="m" corresp="#s4:l4">zondt</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">Is vry van d'oude <rhyme label="b" type="f" corresp="#s4:l3">wetten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ziet! ziet! onse Schepper en <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Laet zijn lichaemken jongh, en <rhyme label="a" type="m" corresp="#s5:l1">teer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Nochtans heden <rhyme label="b" type="f">besnijden</rhyme>;</l>
        <l id="s5:l4" met="2" type="-+">Door dese <rhyme label="c" type="m">snee</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Smart groot, en <rhyme label="c" type="m" corresp="#s5:l4">wee</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En sware pijn moet <rhyme label="b" type="f" corresp="#s5:l3">lijden</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Door dese wondt 't zuyverste <rhyme label="a" type="m">bloedt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Spuyt, springht, loopt, vloeyt in <rhyme label="a" type="m" corresp="#s6:l1">overvloedt</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Dat Godt als mensch hem <rhyme label="b" type="f">heden</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Besnijde <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Zonder <rhyme label="c" type="m" corresp="#s6:l4">Misdaedt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Aenhoort neerstigh de <rhyme label="b" type="f" corresp="#s6:l3">reden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Door het storten van zijn reyn <rhyme label="a" type="m">bloedt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Zijn waer'lijck lichaem blijcken <rhyme label="a" type="m" corresp="#s7:l1">doet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat hy heeft aen <rhyme label="b" type="f">ghenomen</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Uyt Davids <rhyme label="c" type="m">zaedt</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">Hier door <rhyme label="c" type="m" corresp="#s7:l4">verstaet</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Dat vals zijn Mennoos <rhyme label="b" type="f" corresp="#s7:l3">dromen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hierom na Sint Ians waere <rhyme label="a" type="m">leer</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">(Gesoghen uyt de borst van <rhyme label="a" type="m" corresp="#s8:l1">d'Heer</rhyme>)</l>
        <l id="s8:l3" met="3" type="-+">Zoo zijn al de <rhyme label="b" type="f">Mennisten</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Niet alleen <rhyme label="c" type="m">boos</rhyme></l>
        <l id="s8:l5" met="2" type="-+">Ketters <rhyme label="c" type="m" corresp="#s8:l4">Godtloos</rhyme>;</l>
        <l id="s8:l6" met="3" type="-+">Maer mede <rhyme label="b" type="f" corresp="#s8:l3">Antichristen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Als Middelaer wilde ons <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Gelijck in vleesch, bloedt ende <rhyme label="a" type="m" corresp="#s9:l1">pijn</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Daer by oock Godes <rhyme label="b" type="f">Zoone</rhyme></l>
        <l id="s9:l4" met="2" type="-+">Zijn <rhyme label="c" type="m">ned'righeydt</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">
          <rhyme label="c" type="m" corresp="#s9:l4">Gehoorsaemheydt</rhyme>
        </l>
        <l id="s9:l6" met="3" type="-+">Wilde hier door <rhyme label="b" type="f" corresp="#s9:l3">betoone</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Iesus leert ons alle niet <rhyme label="a" type="m">min</rhyme>.</l>
        <l id="s10:l2" met="4" type="-+">Dat wy van 't Nieuwe-Iaers <rhyme label="a" type="m" corresp="#s10:l1">begin</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Ons hart moete <rhyme label="b" type="f">besnijden</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">En handen <rhyme label="c" type="m">twee</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">en oogen <rhyme label="c" type="m" corresp="#s10:l4">mee</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Stelt de tongh niet <rhyme label="b" type="f" corresp="#s10:l3">besijden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Besnijdt u vlees rebel, en <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">En al waer door in t' quaedt ghy <rhyme label="a" type="m" corresp="#s11:l1">viel</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">Menschen van alle <rhyme label="b" type="f">staten</rhyme></l>
        <l id="s11:l4" met="2" type="-+">Wilt 't leven <rhyme label="c" type="m">quaedt</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Na Paulus <rhyme label="c" type="m" corresp="#s11:l4">raedt</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Met 't oude -Iaer <rhyme label="b" type="f" corresp="#s11:l3">verlaten</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Mijn Godt, mijn Al, mijn <rhyme label="a" type="m">Middelaer</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Ick schenck u in dit <rhyme label="a" type="m" corresp="#s12:l1">Nieuwe-Jaer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Mijn hart, mijn goedt, mijn <rhyme label="b" type="f">zinnen</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">Mijn Ziel en <rhyme label="c" type="m">Lijf</rhyme></l>
        <l id="s12:l5" met="2" type="-+">Tot u <rhyme label="c" type="m" corresp="#s12:l4">gherijf</rhyme>.</l>
        <l id="s12:l6" met="3" type="-+">Van nu zal ick <rhyme label="b" type="f" corresp="#s12:l3">beginnen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Iesu! ick smeeck u met <rhyme label="a" type="m">ootmoet</rhyme>;</l>
        <l id="s13:l2" met="4" type="-+">Af-wast mijn zonden met u <rhyme label="a" type="m" corresp="#s13:l1">bloedt</rhyme>.</l>
        <l id="s13:l3" met="3" type="-+">Gheeft my vroomheydt in't <rhyme label="b" type="f">lijde</rhyme>.</l>
        <l id="s13:l4" met="2" type="-+">Daer by Lam <rhyme label="c" type="m">Goods</rhyme>!</l>
        <l id="s13:l5" met="2" type="-+">In d'uur des <rhyme label="c" type="m" corresp="#s13:l4">doodts</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Wilt my eeuwigh <rhyme label="b" type="f" corresp="#s13:l3">verblijde</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
