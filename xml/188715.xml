  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Hemel! hoor mijn <rhyme label="a" type="f">klagen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Siet aen mijn tranen <rhyme label="b" type="m">vloedt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Beschouw mijn droeve <rhyme label="a" type="f" corresp="#s1:l1">dagen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En mijn beswaert <rhyme label="b" type="m" corresp="#s1:l2">gemoedt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Mijn Ziel is gansch <rhyme label="a" type="f" corresp="#s1:l1">verslagen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Mijn hert is seer <rhyme label="c" type="m">gewondt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Mijn yverloose <rhyme label="a" type="f" corresp="#s1:l1">vlagen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Die drucken my te <rhyme label="c" type="m" corresp="#s1:l6">grondt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick sta beschaemt, o <rhyme label="a" type="f">Heere</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Ick weet niet wat ick <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Waer ick my wend' of <rhyme label="a" type="f" corresp="#s2:l1">keere</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">'t Is traegheydt <rhyme label="b" type="m" corresp="#s2:l2">overal</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">'t Zijn liefdeloose <rhyme label="a" type="f" corresp="#s2:l1">plichten</rhyme></l>
        <l id="s2:l6" met="3" type="-+">En stuckwerck, voor en <rhyme label="c" type="m">na</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Wat dat ick hier <rhyme label="a" type="f" corresp="#s2:l1">uytrichte</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ick kom veeltijdts te <rhyme label="c" type="m" corresp="#s2:l6">spa</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De vrucht van mijne <rhyme label="a" type="f">lippe</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Het offer van mijn <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Komt soo maer door te <rhyme label="a" type="f" corresp="#s3:l1">slippen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Niet louter uyt den <rhyme label="b" type="m" corresp="#s3:l2">grondt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Mijn singen, spreecken, <rhyme label="a" type="f" corresp="#s3:l1">lesen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Mijn wercken kleyn en <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Moesten heel anders <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">O Heer! sy zijn te <rhyme label="c" type="m" corresp="#s3:l6">snood'</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mijn yverloose <rhyme label="a" type="f">vlagen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die zijn te veel, o <rhyme label="b" type="m">Heer</rhyme>!</l>
        <l id="s4:l3" met="3" type="-+">Ick kan 't niet langer <rhyme label="a" type="f" corresp="#s4:l1">dragen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Soo druckt het my ter <rhyme label="b" type="m" corresp="#s4:l2">neer</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Ick meen, het sal vast <rhyme label="a" type="f" corresp="#s4:l1">komen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ick meen, het sel, het <rhyme label="c" type="m">sel</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Maer o! 't werdt niet <rhyme label="a" type="f" corresp="#s4:l1">vernomen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">'t Is al het oude <rhyme label="c" type="m" corresp="#s4:l6">spel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dus blijft het, Iaer op <rhyme label="a" type="f">Iare</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dus gaet het, voort en <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ick meen het sal <rhyme label="a" type="f" corresp="#s5:l1">opklaren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En worden soo 't <rhyme label="b" type="m" corresp="#s5:l2">behoort</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Maer och! het wil niet <rhyme label="a" type="f" corresp="#s5:l1">lucken</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">'t Ontschiet my t' ellekens <rhyme label="c" type="m">weer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En 't zijn maer kleyne <rhyme label="a" type="f" corresp="#s5:l1">stucken</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Die ick voortbrengh, o <rhyme label="c" type="m" corresp="#s5:l6">Heer</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">'t Mach schier geen mijtjen <rhyme label="a" type="f">halen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dat ick, o Heer! <rhyme label="b" type="m">inlegg'</rhyme></l>
        <l id="s6:l3" met="3" type="-+">'t Is laeuw, 't is traegh, 't is <rhyme label="a" type="f" corresp="#s6:l1">dralen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Of maer wat <rhyme label="b" type="m" corresp="#s6:l2">mondt-gesegh</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Veeltijdts komt my <rhyme label="a" type="f" corresp="#s6:l1">mankeeren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Dat rechte yver <rhyme label="c" type="m">vuur</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dit smert my, lieve <rhyme label="a" type="f" corresp="#s6:l1">Heere</rhyme>!</l>
        <l id="s6:l8" met="3" type="-+">En maeckt my 't leven <rhyme label="c" type="m" corresp="#s6:l6">suur</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dit doet my innigh <rhyme label="a" type="f">suchten</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">In tranen, en <rhyme label="b" type="m">gebeen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dit doet my Heere <rhyme label="a" type="f" corresp="#s7:l1">vluchten</rhyme>!</l>
        <l id="s7:l4" met="3" type="-+">Tot u, en anders <rhyme label="b" type="m" corresp="#s7:l2">geen</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">O maeck mijn hert aen 't <rhyme label="a" type="f" corresp="#s7:l1">branden</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Recht op de losse <rhyme label="c" type="m">knien</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Versterck de slappe <rhyme label="a" type="f" corresp="#s7:l1">handen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Laet my uw' yver <rhyme label="c" type="m" corresp="#s7:l6">sien</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Uw' geest tot mijn <rhyme label="a" type="f">genoegen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Uw' rechte <rhyme label="b" type="m">yver-vloedt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Wilt my, o Heer! <rhyme label="a" type="f" corresp="#s8:l1">toevoegen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dat bidd' ick met <rhyme label="b" type="m" corresp="#s8:l2">ootmoet</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Raeck aen mijn binnenst <rhyme label="a" type="f" corresp="#s8:l1">binnen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En set het in de <rhyme label="c" type="m">brandt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Geef my vernieuwde <rhyme label="a" type="f" corresp="#s8:l1">sinnen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">En een verlicht <rhyme label="c" type="m" corresp="#s8:l6">verstandt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Laet my, uw' naem ter <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Een vuur Colomme <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Die yvert voor u <rhyme label="a" type="f" corresp="#s9:l1">Heere</rhyme>!</l>
        <l id="s9:l4" met="3" type="-+">In daet, en niet in <rhyme label="b" type="m" corresp="#s9:l2">schijn</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Laet my in yver <rhyme label="a" type="f" corresp="#s9:l1">branden</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En altijdt zijn <rhyme label="c" type="m">bequaem</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Op dat mijn' <rhyme label="a" type="f" corresp="#s9:l1">Offerhanden</rhyme></l>
        <l id="s9:l8" met="3" type="-+">U Heer, zijn <rhyme label="c" type="m" corresp="#s9:l6">aengenaem</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Geen tragen Esel <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">U ooyt behagen <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Ghy wilt, en sultse <rhyme label="a" type="f" corresp="#s10:l1">keeren</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Buyten uw' <rhyme label="b" type="m" corresp="#s10:l2">lief-getal</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Te laeuw, dat mach wel <rhyme label="a" type="f" corresp="#s10:l1">grouwen</rhyme>!</l>
        <l id="s10:l6" met="3" type="-+">'t Leyt steets onder den <rhyme label="c" type="m">vloeck</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Ghy wiltse Heer <rhyme label="a" type="f" corresp="#s10:l1">uytspouwen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">En schrabben uyt uw' <rhyme label="c" type="m" corresp="#s10:l6">Boeck</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Dus, o mijn lieve <rhyme label="a" type="f">Vader</rhyme>!</l>
        <l id="s11:l2" met="3" type="-+">Is dit mijn herts <rhyme label="b" type="m">begeer</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dat ghy uw' goetheydts <rhyme label="a" type="f" corresp="#s11:l1">ader</rhyme></l>
        <l id="s11:l4" met="3" type="-+">My opent, meer en <rhyme label="b" type="m" corresp="#s11:l2">meer</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Dat ghy met volle <rhyme label="a" type="f" corresp="#s11:l1">stroomen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Van yver, ernst, en <rhyme label="c" type="m">kracht</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Mijn traegheydt wilt <rhyme label="a" type="f" corresp="#s11:l1">voorkomen</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Eer dat mijn Ziel <rhyme label="c" type="m" corresp="#s11:l6">versmacht</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wel, alderliefste <rhyme label="a" type="f">Heere</rhyme>!</l>
        <l id="s12:l2" met="3" type="-+">Voldoet dan mijn <rhyme label="b" type="m">begeer</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Mijn laeuwheydt, wilt <rhyme label="a" type="f" corresp="#s12:l1">verkeeren</rhyme></l>
        <l id="s12:l4" met="3" type="-+">In yver, tot uw' <rhyme label="b" type="m" corresp="#s12:l2">eer</rhyme>.</l>
        <l id="s12:l5" met="3" type="-+">Dan sal mijn Ziel u <rhyme label="a" type="f" corresp="#s12:l1">looven</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">En lieven, t' aller <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">En met uw' gunst van <rhyme label="a" type="f" corresp="#s12:l1">boven</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Geduurigh zijn <rhyme label="c" type="m" corresp="#s12:l6">verblijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
