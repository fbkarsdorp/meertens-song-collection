  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">OVer droeve Minnaers <rhyme label="a" type="f">Leven</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Die haer <rhyme label="a" type="f" corresp="#s1:l1">geven</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Aen een Schoon doch stuurs <rhyme label="b" type="m">gesigt</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">In 't op offere van <rhyme label="c" type="f">gedachte</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Minne <rhyme label="c" type="f" corresp="#s1:l4">clagte</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Vant 'onluckig breyn <rhyme label="b" type="m" corresp="#s1:l3">verdigt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Kont ghy noch haer schoonheyt <rhyme label="a" type="f">roeme</rhyme></l>
        <l id="s2:l2" met="2" type="+-">En haer <rhyme label="a" type="f" corresp="#s2:l1">noeme</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Al u lusten en <rhyme label="b" type="m">vermaeck</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Daer sy u hout als <rhyme label="c" type="f">gekluystert</rhyme></l>
        <l id="s2:l5" met="2" type="+-">En noyt <rhyme label="c" type="f" corresp="#s2:l4">luystert</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Nae u op gepronckte <rhyme label="b" type="m" corresp="#s2:l3">spraeck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Siet gy niet het straf <rhyme label="a" type="f">gebieden</rhyme></l>
        <l id="s3:l2" met="2" type="+-">En het <rhyme label="a" type="f" corresp="#s3:l1">vlieden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Van de geen die gy <rhyme label="b" type="m">bemint</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Vint ghy niet een schijn <rhyme label="c" type="f">genoegen</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Daer het <rhyme label="c" type="f" corresp="#s3:l4">wroeghen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">In u breyn oock plaetse <rhyme label="b" type="m" corresp="#s3:l3">vint</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Minnaer leert t' beminde <rhyme label="a" type="f">derven</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Soo t <rhyme label="a" type="f" corresp="#s4:l1">'verwerven</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Van u lief niet wert <rhyme label="b" type="m">belooft</rhyme></l>
        <l id="s4:l4" met="4" type="+-">t Is haest langh ghenoegh te <rhyme label="c" type="f">sugten</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Als het <rhyme label="c" type="f" corresp="#s4:l4">vlugten</rhyme></l>
        <l id="s4:l6" met="4" type="+-">U van waere hoop <rhyme label="b" type="m" corresp="#s4:l3">berooft</rhyme>,</l>
      </lg>
    </lg>
  </text>
