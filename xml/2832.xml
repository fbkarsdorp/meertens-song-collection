    <melody>Toen Hanselijn over de heide reed</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Dat reet een heer/ In syn schilt <rhyme label="a" type="m">knecht</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Soe veer aen geen lans <rhyme label="b" type="f">douwe</rhyme></l>
        <l id="s1:l3" met="4" type="-+">En hanselinck oeuer de reyde <rhyme label="c" type="m">reet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">hy sanck van syn schoen <rhyme label="b" type="f" corresp="#s1:l2">vrouwe</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Was hem <rhyme label="b" type="f" corresp="#s1:l2">getrouwe</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och hansie seide hy Hy myn schilt <rhyme label="a" type="m">knecht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">en draecht geen rou van <rhyme label="b" type="f">vrouwe</rhyme></l>
        <l id="s2:l3" met="4" type="-+">en draecht gy dats mynen groene schilt <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">met swaerde soudt ick u duer <rhyme label="b" type="f" corresp="#s2:l2">houwe</rhyme></l>
        <l id="s2:l5" met="2" type="-+">al om de <rhyme label="b" type="f" corresp="#s2:l2">vrouwe</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En dat ick uwen groene schilt <rhyme label="a" type="m">draech</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daer of syt gy myn <rhyme label="b" type="f">heere</rhyme></l>
        <l id="s3:l3" met="4" type="-+">maer laet wij <rhyme label="c" type="m">malkander</rhyme></l>
        <l id="s3:l4" met="3" type="-+">met swaerde gaen <rhyme label="b" type="f" corresp="#s3:l2">slaen</rhyme></l>
        <l id="s3:l5" met="2" type="-+">niemant en sal ons <rhyme label="b" type="f" corresp="#s3:l2">keere</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy lieten bey haer driege <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">sij ginge slaen met <rhyme label="b" type="f">swaerde</rhyme></l>
        <l id="s4:l3" met="4" type="-+">en hansie die sloech sijn meester <rhyme label="c" type="m">doet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat hy needer viel ter <rhyme label="b" type="f" corresp="#s4:l2">aerde</rhyme></l>
        <l id="s4:l5" met="2" type="-+">al van syn <rhyme label="b" type="f" corresp="#s4:l2">paerde</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nu lecht gy daer/ en Ick stae <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s5:l2" met="3" type="-+">met swaerdekens duer <rhyme label="b" type="f">houde</rhyme></l>
        <l id="s5:l3" met="4" type="-+">nu wil ick gaen rijde te straets burch <rhyme label="c" type="m">In</rhyme></l>
        <l id="s5:l4" met="3" type="-+">en slaepe bij u schoen <rhyme label="b" type="f" corresp="#s5:l2">vrouwe</rhyme></l>
        <l id="s5:l5" met="2" type="-+">sij Is myn <rhyme label="b" type="f" corresp="#s5:l2">getrouwe</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doen hy te Straets burch Inne <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die schoen lach op der <rhyme label="b" type="f">dinne</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Och wist gy Jonck vroutge, Dat ick wel <rhyme label="c" type="m">weet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Hoe seere sout gy weine <rhyme label="b" type="f" corresp="#s6:l2">soe</rhyme></l>
        <l id="s6:l5" met="2" type="-+">als Ick <rhyme label="b" type="f" corresp="#s6:l2">meine</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Secht myn wel hansie myn schilt <rhyme label="a" type="m">knecht</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Waerom soe sout Ick <rhyme label="b" type="f">weine</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Nu leeft er myn heer of Is hy <rhyme label="c" type="m">doet</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Den rou Is al soe <rhyme label="b" type="f" corresp="#s7:l2">kleine</rhyme>/</l>
        <l id="s7:l5" met="2" type="-+">alsoe Ick <rhyme label="b" type="f" corresp="#s7:l2">meine</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Myn heer leeft noch hy en is niet <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Hy leit ter Sluis <rhyme label="b" type="f">gevange</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Hy heit geschoten een wilt <rhyme label="c" type="m">knin</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Daer om soe moet hy <rhyme label="b" type="f" corresp="#s8:l2">hangen</rhyme></l>
        <l id="s8:l5" met="2" type="-+">Sonder <rhyme label="b" type="f" corresp="#s8:l2">verlangen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hei hy geschoeten een wilt <rhyme label="a" type="m">knin</rhyme></l>
        <l id="s9:l2" met="3" type="-+">moet hy daerom noch <rhyme label="b" type="f">hangen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Soe komt slaepen al In de arm van <rhyme label="c" type="m">myn</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Die tyt en sal ons niet <rhyme label="b" type="f" corresp="#s9:l2">verlangen</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Alsoe ick <rhyme label="b" type="f" corresp="#s9:l2">meine</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ick en mach van al dit lange <rhyme label="a" type="m">Jaer</rhyme></l>
        <l id="s10:l2" met="3" type="-+">In geen vrous arm <rhyme label="b" type="f">slaepen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Daer gaeter soe meenich fres- hupse vrou <rhyme label="c" type="m">maecht</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Te straets burch byder <rhyme label="b" type="f" corresp="#s10:l2">straete</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Wat kant myn <rhyme label="b" type="f" corresp="#s10:l2">baten</rhyme>.</l>
      </lg>
    </lg>
  </text>
