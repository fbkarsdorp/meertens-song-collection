    <tags>
      <tag standard-name="gebedslied" translation="prayer">gebedslied</tag>
    </tags>
    <melody>Geef mij te drinken naar mijn dorst</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Heere mijn gebedt toch <rhyme label="a" type="m">voerhoert</rhyme></l>
        <l id="s1:l2" met="4" type="-+">en laet voer u koemen mijn <rhyme label="b" type="f">klaegen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Verlost mijn Heer nae uwer <rhyme label="a" type="m" corresp="#s1:l1">woert</rhyme></l>
        <l id="s1:l4" met="4" type="-+">en treckt mijn uit dees vijans <rhyme label="b" type="f" corresp="#s1:l2">laegen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Die om ons gaet tot allen <rhyme label="b" type="f" corresp="#s1:l2">daegen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">als een leeu seer fel en <rhyme label="c" type="m">wreet</rhyme></l>
        <l id="s1:l7" met="4" type="-+">soekende wien dat hij sal <rhyme label="b" type="f" corresp="#s1:l2">knagen</rhyme></l>
        <l id="s1:l8" met="4" type="-+">als peeterus ons doet <rhyme label="c" type="m" corresp="#s1:l6">beescheet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Heere godt mijn <rhyme label="a" type="m">heylant</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ick roeup tot u in minen <rhyme label="b" type="f">noede</rhyme></l>
        <l id="s2:l3" met="4" type="-+">vrijt mijn voer den grousaem <rhyme label="a" type="m" corresp="#s2:l1">vijant</rhyme></l>
        <l id="s2:l4" met="4" type="-+">laet faelen niet u <rhyme label="b" type="f" corresp="#s2:l2">geboeden</rhyme></l>
        <l id="s2:l5" met="4" type="-+">mijn dwaesheit ende schulden <rhyme label="b" type="f" corresp="#s2:l2">swaer</rhyme></l>
        <l id="s2:l6" met="4" type="-+">en sullen niet voerborgen <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s2:l7" met="4" type="-+">mijn leeven Is nae bijder <rhyme label="b" type="f" corresp="#s2:l2">doeden</rhyme></l>
        <l id="s2:l8" met="4" type="-+">o heere sijt genaedich <rhyme label="c" type="m" corresp="#s2:l6">mijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In uwen toeren straft mijn <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">maer sijt toch mijn oe heer <rhyme label="b" type="f">genaedich</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Want geeheel swack soe ben Ick <rhyme label="a" type="m" corresp="#s3:l1">siet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Treckt niet Int recht met mijn <rhyme label="b" type="f" corresp="#s3:l2">misdaedich</rhyme></l>
        <l id="s3:l5" met="4" type="-+">uit den diepte roeup ick <rhyme label="b" type="f" corresp="#s3:l2">gestaedich</rhyme></l>
        <l id="s3:l6" met="4" type="-+">tot u oe heer voerhoert mijn <rhyme label="c" type="m">toch</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Verdellicht mijn sonden <rhyme label="b" type="f" corresp="#s3:l2">versmaedich</rhyme></l>
        <l id="s3:l8" met="4" type="-+">in u barmherticheit <rhyme label="c" type="m" corresp="#s3:l6">noch</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Aenschout doch verhoert mijn <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s4:l2" met="4" type="-+">o godt schept in mijn een reyn <rhyme label="b" type="f">herte</rhyme></l>
        <l id="s4:l3" met="4" type="-+">geeneest mijn wonden die stincken <rhyme label="a" type="m" corresp="#s4:l1">seer</rhyme></l>
        <l id="s4:l4" met="4" type="-+">en vloeyen van etter met <rhyme label="b" type="f" corresp="#s4:l2">smerte</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Doer mijn sonde en boese <rhyme label="b" type="f" corresp="#s4:l2">perten</rhyme></l>
        <l id="s4:l6" met="4" type="-+">o godt mijn toch genaedich <rhyme label="c" type="m">sijt</rhyme></l>
        <l id="s4:l7" met="4" type="-+">leit mijn uit dees weerels <rhyme label="b" type="f" corresp="#s4:l2">deeserte</rhyme></l>
        <l id="s4:l8" met="4" type="-+">en leert mijn u weegen <rhyme label="c" type="m" corresp="#s4:l6">altijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Heer leit mijn in uwe <rhyme label="a" type="m">waerheit</rhyme></l>
        <l id="s5:l2" met="4" type="-+">en gedenckt mijn Jonckheits <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Ick roeup tot u In mijn <rhyme label="a" type="m" corresp="#s5:l1">swaerheit</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Laet mijn toch heer niet gaen te <rhyme label="b" type="f" corresp="#s5:l2">gronde</rhyme></l>
        <l id="s5:l5" met="4" type="-+">hoe sal een Jongelinck teeniger <rhyme label="b" type="f" corresp="#s5:l2">stonde</rhyme></l>
        <l id="s5:l6" met="4" type="-+">o heer sijn wech onstraffelick <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Daer geenen mens en wort <rhyme label="b" type="f" corresp="#s5:l2">gevonden</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Die Jeegens u niet heeft <rhyme label="c" type="m" corresp="#s5:l6">misdaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O prinselicke godt seer <rhyme label="a" type="m">goedt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Starricht mijn heer dat ick <rhyme label="b" type="f">geeneese</rhyme></l>
        <l id="s6:l3" met="4" type="-+">leert mijn u heilsaem seeden <rhyme label="a" type="m" corresp="#s6:l1">soet</rhyme></l>
        <l id="s6:l4" met="4" type="-+">laet mijn vruch in u genaedich <rhyme label="b" type="f" corresp="#s6:l2">weesen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">op u hoep Ick mijn godt <rhyme label="b" type="f" corresp="#s6:l2">gepreesen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">opent mijn oegen met <rhyme label="c" type="m">voorstant</rhyme></l>
        <l id="s6:l7" met="4" type="-+">en wilt mijn toch o Heer midts <rhyme label="b" type="f" corresp="#s6:l2">deesen</rhyme></l>
        <l id="s6:l8" met="4" type="-+">ont binnen vander sonden <rhyme label="c" type="m" corresp="#s6:l6">bant</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
