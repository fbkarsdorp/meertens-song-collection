  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DIe eeuwigh wenscht te <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">In <rhyme label="b" type="f">wellustigheden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En staegh in weeld' te <rhyme label="a" type="f" corresp="#s1:l1">streven</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Met ghesonde <rhyme label="b" type="f" corresp="#s1:l2">leden</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Die is // <rhyme label="c" type="m">ghewis</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Verblockt // <rhyme label="d" type="m">verstockt</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Sonder <rhyme label="e" type="f">achterdencken</rhyme>:</l>
        <l id="s1:l8" met="2" type="-+">De weelde <rhyme label="f" type="m">sal</rhyme></l>
        <l id="s1:l9" met="2" type="+-">Gants <rhyme label="f" type="m" corresp="#s1:l8">heel-en-al</rhyme></l>
        <l id="s1:l10" met="3" type="-+">De arme ziele <rhyme label="e" type="f" corresp="#s1:l7">krencken</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">En in wellust heel <rhyme label="e" type="f" corresp="#s1:l7">verdrencken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O! die hier vroom kan <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">En gheduldigh <rhyme label="b" type="f">draghen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sal weder eens <rhyme label="a" type="f" corresp="#s2:l1">verblijden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">In de <rhyme label="b" type="f" corresp="#s2:l2">Oordeel-daghen</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">God gheeft // die <rhyme label="c" type="m">streeft</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Die strijdt // en <rhyme label="d" type="m">lijdt</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Een gheluckigh <rhyme label="e" type="f">sterven</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Een <rhyme label="f" type="m">harten-lust</rhyme>,</l>
        <l id="s2:l9" met="2" type="+-">Een <rhyme label="f" type="m" corresp="#s2:l8">zielen-rust</rhyme></l>
        <l id="s2:l10" met="3" type="-+">En alle blijdtschap 't <rhyme label="e" type="f" corresp="#s2:l7">erven</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Ende wroegingh oock te <rhyme label="e" type="f" corresp="#s2:l7">derven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Jesu, ons aller <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Quam door smert in <rhyme label="b" type="f">vreuchde</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Dit dient tot troost en <rhyme label="a" type="f" corresp="#s3:l1">leere</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Dat, die in reyne <rhyme label="b" type="f" corresp="#s3:l2">Deuchde</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Sijn tijdt // <rhyme label="c" type="m">verslijt</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">En duldt // <rhyme label="d" type="m">onschuldt</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">Oock sal zijn <rhyme label="e" type="f">verheven</rhyme>.</l>
        <l id="s3:l8" met="2" type="-+">Die hier <rhyme label="f" type="m">verdraeght</rhyme>,</l>
        <l id="s3:l9" met="2" type="+-">Wie dat hem <rhyme label="f" type="m" corresp="#s3:l8">plaeght</rhyme>:</l>
        <l id="s3:l10" met="3" type="-+">Die sal Godt nae dit <rhyme label="e" type="f" corresp="#s3:l7">leven</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Eeuw'ghe vreught en blijdtschap <rhyme label="e" type="f" corresp="#s3:l7">geven</rhyme>.</l>
      </lg>
    </lg>
  </text>
