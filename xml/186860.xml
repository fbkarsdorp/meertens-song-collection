    <melody>Voor het vaderland en vrijheid</melody>
  <author>Gerrit Manheer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Wie kan 't lieve Meisje <rhyme label="a" type="f">haten</rhyme>?</l>
        <l id="s1:l2" met="4" type="+-">Meisjes, u en 't <rhyme label="b" type="m">Vaderland</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Zal de Belg nooit, nooit <rhyme label="a" type="f" corresp="#s1:l1">verlaten</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Met het krygszwaart in de <rhyme label="b" type="m" corresp="#s1:l2">hand</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Kus ik 't lief <rhyme label="c" type="m">Geslagt</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En haar kus, zoo <rhyme label="c" type="m" corresp="#s1:l5">zagt</rhyme>!</l>
        <l id="s1:l7" met="4" type="+-">Jaagt den warmen <rhyme label="d" type="m">heldengloed</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Door myn jong Bataafsche <rhyme label="d" type="m" corresp="#s1:l7">bloed</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Aan uw zydje, <rhyme label="a" type="f">neêrgezegen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Vat uw hand de <rhyme label="b" type="m">lauwerkroon</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En gy hangt die om myn' <rhyme label="a" type="f" corresp="#s2:l1">degen</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">o Wat staat dien lauwer <rhyme label="b" type="m" corresp="#s2:l2">schoon</rhyme>!</l>
        <l id="s2:l5" met="3" type="+-">U en 't <rhyme label="c" type="m">Vaderland</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Blyft myn hart <rhyme label="c" type="m" corresp="#s2:l5">verpand</rhyme>;</l>
        <l id="s2:l7" met="4" type="+-">Voor u, schenksters van myn <rhyme label="d" type="m">heil</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Heb ik goed en leven <rhyme label="d" type="m" corresp="#s2:l7">veil</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Laaten andren 't goud <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En naar eer en aanzien <rhyme label="b" type="m">staan</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Door uw' welvaart, <rhyme label="a" type="f" corresp="#s3:l1">Engelinnen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Werd myn hoogsten wensch <rhyme label="b" type="m" corresp="#s3:l2">voldaan</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">U en 't <rhyme label="c" type="m">Vaderland</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Blyft myn goud <rhyme label="c" type="m" corresp="#s3:l5">verpand</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Als de Belg gelukkig <rhyme label="d" type="m">zy</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Leeft et Belgsche Meisje <rhyme label="d" type="m" corresp="#s3:l7">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Op een terpje <rhyme label="a" type="f">neêrgezeten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als onze eerste Vadren <rhyme label="b" type="m">deên</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Doen wy u, al kusschend, <rhyme label="a" type="f" corresp="#s4:l1">weten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Wie ons Land heeft <rhyme label="b" type="m" corresp="#s4:l2">vrygestreên</rhyme>;</l>
        <l id="s4:l5" met="3" type="+-">Dan, dan zingen <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Vergenoegt en <rhyme label="c" type="m" corresp="#s4:l5">bly</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Lang, lang leev' de <rhyme label="d" type="m">Batavier</rhyme>!</l>
        <l id="s4:l8" met="4" type="+-">Kroon zyn kruin met <rhyme label="d" type="m" corresp="#s4:l7">eerlauwrier</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
