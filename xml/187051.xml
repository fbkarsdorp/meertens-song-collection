<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>187051</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody>Wie wil er mee naar Oost-IndiÃ« varen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Wie wil 'er met ons mee te Kaep gaen <rhyme label="a" type="f">vaeren</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">En halen buit op Nephtuns woeste <rhyme label="a" type="f" corresp="#s1:l1">baaren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">De Scheepen maekt men <rhyme label="b" type="m">ree</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Kom helden wie vaart <rhyme label="b" type="m" corresp="#s1:l3">mee</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Geen donderkloot of vuur zal ons <rhyme label="a" type="f">verschrikken</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Al toont de trotsche Brit verwoede <rhyme label="a" type="f" corresp="#s2:l1">blikken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wy langen met die <rhyme label="b" type="m">Dog</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Rooszugtig vol <rhyme label="b" type="m" corresp="#s2:l3">bedrog</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Kom Mannen hier is blinkent goud te <rhyme label="a" type="f">haelen</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Een ryke winst zal al 't gevaer <rhyme label="a" type="f" corresp="#s3:l1">betaelen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ontziet nog vuur nog <rhyme label="b" type="m">stael</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Voor gangbaer munt <rhyme label="b" type="m" corresp="#s3:l3">metael</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Kom tragten wy de glorie te <rhyme label="a" type="f">verwerven</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Wat noot, wy moeten allen eenmael <rhyme label="a" type="f" corresp="#s4:l1">sterven</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Kom sterf dan vroeg of <rhyme label="b" type="m">laet</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Voor 't welzyn van den <rhyme label="b" type="m" corresp="#s4:l3">Staet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Schep moed want de oorlogskans zal ons <rhyme label="a" type="f">gelukken</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">Wy schieten al wat ons weerstaedt aen <rhyme label="a" type="f" corresp="#s5:l1">stukken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Vrees trotse Brit uw <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Koelt ooze <rhyme label="b" type="m" corresp="#s5:l3">Heldenmoed</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">En komen wy dan weer behouden <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Dan gaen wy weder bly naer die <rhyme label="a" type="f" corresp="#s6:l1">Vrindinnen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die ons naest liefde en <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Verschaffen zagte <rhyme label="b" type="m" corresp="#s6:l3">rust</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Daer zal het zoet vermaek ons weder <rhyme label="a" type="f">loonen</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Als wy de lievertjes de schyven <rhyme label="a" type="f" corresp="#s7:l1">toonen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Gewonnen met <rhyme label="b" type="m">beleid</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En waere <rhyme label="b" type="m" corresp="#s7:l3">dapperheid</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Dan zullen wy te saem eens lugtig <rhyme label="a" type="f">klinken</rhyme>,</l>
        <l id="s8:l2" met="5" type="-+">En op de lieve Vorst zyn welzyn <rhyme label="a" type="f" corresp="#s8:l1">drinken</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die ons tot 's Vyands <rhyme label="b" type="m">straf</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Tot Kaapen vryheid <rhyme label="b" type="m" corresp="#s8:l3">gaf</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
