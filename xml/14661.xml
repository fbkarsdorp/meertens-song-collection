    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Iesu eeuwigh goet des <rhyme label="a" type="f">Vaders</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Moet ick u dus mishand'len <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van soo veel boose vals <rhyme label="a" type="f" corresp="#s1:l1">verraders</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als of hy't niet en condt <rhyme label="b" type="m" corresp="#s1:l2">ontvlien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Is dus de liefde <rhyme label="a" type="f">doorghedronghen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Het binnenste van uwe <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat u lichaem dus naeu <rhyme label="a" type="f" corresp="#s2:l1">bedwonghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Een breyden rock onttrocken <rhyme label="b" type="m" corresp="#s2:l2">werdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Soo sien ick dat oprechte <rhyme label="a" type="f">minne</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Is stercker dan de felle <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Want anders soudt ghy niet <rhyme label="a" type="f" corresp="#s3:l1">beginnen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dus bloot te staen, met schaemte <rhyme label="b" type="m" corresp="#s3:l2">root</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De kille koude <rhyme label="a" type="f">Pijlaer-steenen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Verkleumen u teer naeckte <rhyme label="b" type="m">lijf</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daer ghy met touwen om u <rhyme label="a" type="f" corresp="#s4:l1">beenen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Aen sijt ghebonden al te <rhyme label="b" type="m" corresp="#s4:l2">stijf</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En uwe handen 'tsaem <rhyme label="a" type="f">ghebonden</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Sijn boven aen soo vast <rhyme label="b" type="m">ghemaeckt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat elcken roeden slagh, met <rhyme label="a" type="f" corresp="#s5:l1">wonden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Heel diep in uwen sijden <rhyme label="b" type="m" corresp="#s5:l2">raeckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ey soete droppeltjes des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Gy die dus lau daer henen <rhyme label="b" type="m">druypt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wast af mijn wonden, en mijn <rhyme label="a" type="f" corresp="#s6:l1">seere</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Dat daer geen quaet meer in en <rhyme label="b" type="m" corresp="#s6:l2">cruypt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoe biggelt ghy dus langs de <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Van mijnen Salighmaker <rhyme label="b" type="m">droef</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Of wilt ghy hem nu helpen <rhyme label="a" type="f" corresp="#s7:l1">treden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Den wegh des doodts tot ons <rhyme label="b" type="m" corresp="#s7:l2">behoef</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ist u dus soet voor ons te <rhyme label="a" type="f">bloeden</rhyme></l>
        <l id="s8:l2" met="4" type="-+">En op de Aerd' te rollen <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Soo springht, en spat, vry aende <rhyme label="a" type="f" corresp="#s8:l1">roeden</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Want onse misdaedt doet ons <rhyme label="b" type="m" corresp="#s8:l2">seer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maeckt vry een badt van warme <rhyme label="a" type="f">drop'len</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Rontom de harde steen <rhyme label="b" type="m">calom</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Op dat ons siels verdorde <rhyme label="a" type="f" corresp="#s9:l1">stop'len</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Eens vruchtbaer worden <rhyme label="b" type="m" corresp="#s9:l2">wederom</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wy sullen in u comen <rhyme label="a" type="f">swemmen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En maecken ons van binnen <rhyme label="b" type="m">reyn</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">Want droevigh roepen wy met <rhyme label="a" type="f" corresp="#s10:l1">stemmen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Laeft ons nu doch als een <rhyme label="b" type="m" corresp="#s10:l2">Fonteyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
