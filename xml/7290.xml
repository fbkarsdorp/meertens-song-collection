    <melody>Dat alle bergen goud waren</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Dat alle berghen Goude <rhyme label="a" type="m">waren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En alle waters <rhyme label="b" type="m">wijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En alle waters <rhyme label="b" type="m" corresp="#s1:l2">wijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Zoo had ick jou noch veel <rhyme label="c" type="m">liever</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Moy Meysje waerje <rhyme label="d" type="m">mijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Moy Meysje waerje <rhyme label="d" type="m" corresp="#s1:l5">mijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Had gy my dan veel <rhyme label="a" type="m">liever</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Als ghy my doet in <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als ghy my doet in <rhyme label="b" type="m" corresp="#s2:l2">schijn</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">So gaet eens voor mijn vader <rhyme label="c" type="m">staen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">En bid, en bid om <rhyme label="d" type="m">mijn</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En bid, en bid om <rhyme label="d" type="m" corresp="#s2:l5">mijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick heb al voor jou Vader <rhyme label="a" type="m">gheweest</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En hy ontseght het <rhyme label="b" type="m">mijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En hy ontseght het <rhyme label="b" type="m" corresp="#s3:l2">mijn</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Neemt oorlof aen u <rhyme label="c" type="m">selven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Schoon lief en gaet met <rhyme label="d" type="m">mijn</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Schoon lief en gaet met <rhyme label="d" type="m" corresp="#s3:l5">mijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Oorlof aen mijn <rhyme label="a" type="m">selven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">De knaepjes zijn soo <rhyme label="b" type="m">loos</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">De knaepjes zijn soo <rhyme label="b" type="m" corresp="#s4:l2">loos</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En of gy my dan verliet schoon <rhyme label="c" type="m">lief</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Zoo was ick <rhyme label="d" type="m">vriendeloos</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Zoo was ick <rhyme label="d" type="m" corresp="#s4:l5">vriendeloos</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">’k En sal u niet <rhyme label="a" type="m">verlaten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van nu tot in der <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Van nu tot in der <rhyme label="b" type="m" corresp="#s5:l2">doodt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ey benter een Konincks <rhyme label="c" type="m">dochterken</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Een Roosje alsoo <rhyme label="d" type="m">roodt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Een Roosje alsoo <rhyme label="d" type="m" corresp="#s5:l5">roodt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ben icker een Konincx <rhyme label="a" type="m">dochterken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En zou een Graven <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En zou een Graven <rhyme label="b" type="m" corresp="#s6:l2">kindt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Zy namen malkander by de <rhyme label="c" type="m">handt</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Zy ginghen onder de <rhyme label="d" type="m">Lindt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Zy ginghen onder de <rhyme label="d" type="m" corresp="#s6:l5">Lindt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Zy namen malkander by de <rhyme label="a" type="m">hant</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En ginghen onder de <rhyme label="b" type="m">Lindt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En ginghen onder de <rhyme label="b" type="m" corresp="#s7:l2">Lindt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Daer speelden zy twee het <rhyme label="c" type="m">minnespel</rhyme></l>
        <l id="s7:l5" met="3" type="-+">De schoonste worde met ‘t <rhyme label="d" type="m">kint</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">De schoonste worde met ‘t <rhyme label="d" type="m" corresp="#s7:l5">kint</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nu sit ick hier <rhyme label="a" type="m">ghebonden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Met mijnen kleynen <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Met mijnen kleynen <rhyme label="b" type="m" corresp="#s8:l2">kindt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Zoo bid ick die suyvere <rhyme label="c" type="m">Maria</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Dat zy my weer <rhyme label="d" type="m">ontbindt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Dat zy my weer <rhyme label="d" type="m" corresp="#s8:l5">ontbindt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ick wou dat gy ontbonden <rhyme label="a" type="m">waert</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Van uwen kleynen <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Van uwen kleynen <rhyme label="b" type="m" corresp="#s9:l2">kindt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En dat ick jou begraven <rhyme label="c" type="m">sou</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Onder dees groene <rhyme label="d" type="m">Lindt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Onder dees groene <rhyme label="d" type="m" corresp="#s9:l5">Lindt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wout ghy dat ick begraven <rhyme label="a" type="m">lagh</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Al onder dese <rhyme label="b" type="m">Lindt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Al onder dese <rhyme label="b" type="m" corresp="#s10:l2">Lindt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Zo wou ick veel liever stout <rhyme label="c" type="m">Ruyter</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Dat jy by jou keet <rhyme label="d" type="m">ophinght</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Dat jy by jou keet <rhyme label="d" type="m" corresp="#s10:l5">ophinght</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">De ruyter hief op zijn <rhyme label="a" type="m">slinckerhant</rhyme></l>
        <l id="s11:l2" met="3" type="-+">En hy gaf haer eene <rhyme label="b" type="m">slagh</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En hy gaf haer eene <rhyme label="b" type="m" corresp="#s11:l2">slagh</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Zoo dat zy neder ter aerde <rhyme label="c" type="m">viel</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Zy hoorden noch zy <rhyme label="d" type="m">sagh</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Zy hoorden noch zy <rhyme label="d" type="m" corresp="#s11:l5">sagh</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Al hebje my nu <rhyme label="a" type="m">gheslaghen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Schoon lief ten is van genen <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Schoon lief ten is van genen <rhyme label="b" type="m" corresp="#s12:l2">noot</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Al eerder seven Iaren omme <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Zoo selic komen om <rhyme label="d" type="m">broodt</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Zoo selic komen om <rhyme label="d" type="m" corresp="#s12:l5">broodt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Aleer de seven Iaren omme <rhyme label="a" type="m">waren</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Den Ruyter quam om <rhyme label="b" type="m">broodt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Den Ruyter quam om <rhyme label="b" type="m" corresp="#s13:l2">broodt</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Met een Lazerus-klapien in zijn <rhyme label="c" type="m">hant</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Hy haddet seer van <rhyme label="d" type="m">noodt</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Hy haddet seer van <rhyme label="d" type="m" corresp="#s13:l5">noodt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">O Kindt (sey zy) van seven <rhyme label="a" type="m">Iaer</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Nu set jou Vader een <rhyme label="b" type="m">stoel</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Nu set jou Vader een <rhyme label="b" type="m" corresp="#s14:l2">stoel</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Ick hebber den dagh wel eer <rhyme label="c" type="m">gesien</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Hy wasser een Ridder <rhyme label="d" type="m">koen</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Hy wasser een Ridder <rhyme label="d" type="m" corresp="#s14:l5">koen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">O kindt (sey zy) wel kleyne <rhyme label="a" type="m">kint</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Nu geeft jou Vader <rhyme label="b" type="m">broodt</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Nu geeft jou Vader <rhyme label="b" type="m" corresp="#s15:l2">broodt</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Ick heb den dagh wel eer <rhyme label="c" type="m">ghesien</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Hy haddet niet van <rhyme label="d" type="m">noodt</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Hy haddet niet van <rhyme label="d" type="m" corresp="#s15:l5">noodt</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">O kindt (sey zy) wel kleyne <rhyme label="a" type="m">kint</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Nu gheeft jou Vader <rhyme label="b" type="m">bier</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Nu gheeft jou Vader <rhyme label="b" type="m" corresp="#s16:l2">bier</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Ick heb den dagh wel eer <rhyme label="c" type="m">gheleeft</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Dat hy was de Liefste <rhyme label="d" type="m">fier</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Dat hy was de Liefste <rhyme label="d" type="m" corresp="#s16:l5">fier</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">O kindt (sey zy) wel kleyne <rhyme label="a" type="m">kint</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Nou schenckt jou Vader <rhyme label="b" type="m">wijn</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Nou schenckt jou Vader <rhyme label="b" type="m" corresp="#s17:l2">wijn</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Ick heb den dagh wel eer <rhyme label="c" type="m">beleeft</rhyme></l>
        <l id="s17:l5" met="3" type="-+">Dat hy was de liefste <rhyme label="d" type="m">mijn</rhyme>,</l>
        <l id="s17:l6" met="3" type="-+">Dat hy was de liefste <rhyme label="d" type="m" corresp="#s17:l5">mijn</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Haer Vader achter de deure <rhyme label="a" type="m">stont</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Hy hoorden ’t hooghe <rhyme label="b" type="m">woordt</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Hy hoorden ’t hooghe <rhyme label="b" type="m" corresp="#s18:l2">woordt</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Hy troc zijn blanc swaert uyt de <rhyme label="c" type="m">sche</rhyme></l>
        <l id="s18:l5" met="3" type="-+">En huey hem of zijn <rhyme label="d" type="m">hooft</rhyme>,</l>
        <l id="s18:l6" met="3" type="-+">En huey hem of zijn <rhyme label="d" type="m" corresp="#s18:l5">hooft</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Hy nam dat hoofje by den <rhyme label="a" type="m">hayr</rhyme></l>
        <l id="s19:l2" met="3" type="-+">En hy wierp het in haer <rhyme label="b" type="m">schoot</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">En hy wierp het in haer <rhyme label="b" type="m" corresp="#s19:l2">schoot</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Hou daer mijn ionghste <rhyme label="c" type="m">dochtertje</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Beweent dees appel <rhyme label="d" type="m">roodt</rhyme>,</l>
        <l id="s19:l6" met="3" type="-+">Beweent dees appel <rhyme label="d" type="m" corresp="#s19:l5">roodt</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Zoud’ ick het al <rhyme label="a" type="m">beweenen</rhyme></l>
        <l id="s20:l2" met="3" type="-+">Dat hier te beweenen <rhyme label="b" type="m">waer</rhyme>,</l>
        <l id="s20:l3" met="3" type="-+">Dat hier te beweenen <rhyme label="b" type="m" corresp="#s20:l2">waer</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Zoo had ick wel al de dagen <rhyme label="c" type="m">werck</rhyme></l>
        <l id="s20:l5" met="3" type="-+">Die daer komen in ’t <rhyme label="d" type="m">Iaer</rhyme>,</l>
        <l id="s20:l6" met="3" type="-+">Die daer komen in ’t <rhyme label="d" type="m" corresp="#s20:l5">Iaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
