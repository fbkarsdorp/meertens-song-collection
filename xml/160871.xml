<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>160871</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Wanneer ik slaap</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Dit is 't af-snijden van de <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Het los doen van der sonden <rhyme label="a" type="f" corresp="#s1:l1">banden</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Met 't ingewortelt <rhyme label="b" type="m">quaedt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Het welck Godt <rhyme label="b" type="m" corresp="#s1:l3">haet</rhyme>.</l>
        <l id="s1:l5" met="3" type="+-">Daerom doet dan <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Om voor hem te <rhyme label="c" type="m" corresp="#s1:l5">staen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Om voor het te staen <rhyme label="d" type="f">verkooren</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Als heyligh en weder <rhyme label="d" type="f" corresp="#s1:l7">gebooren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gehoorsaemheydt is Godes <rhyme label="a" type="f">wille</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dit kan alleen sijn tooren <rhyme label="a" type="f" corresp="#s2:l1">stille</rhyme>:</l>
        <l id="s2:l3" met="2" type="-+">Daerom maeckt een <rhyme label="b" type="m">besluyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Steeckt oogen <rhyme label="b" type="m" corresp="#s2:l3">uyt</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Dat is sulcke <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Die 't gemoet <rhyme label="c" type="m" corresp="#s2:l5">ontrust</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Die 't gemoet ontrust tot <rhyme label="d" type="f">sonden</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">En Ziel en lichaem bey komt <rhyme label="d" type="f" corresp="#s2:l7">wonden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wat uyt-vlucht kan de Mensch dan <rhyme label="a" type="f">soecken</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Hael uyt vry alle donckre <rhyme label="a" type="f" corresp="#s3:l1">hoecken</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Van schijn <rhyme label="b" type="m">bedriegery</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Op eene <rhyme label="b" type="m" corresp="#s3:l3">ry</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">En toetst' aen den <rhyme label="c" type="m">dagh</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Dien ghy nu hier <rhyme label="c" type="m" corresp="#s3:l5">sagh</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Dien ghy nu hier sagh <rhyme label="d" type="f">gebieden</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Het goet te doen en 't quaedt te <rhyme label="d" type="f" corresp="#s3:l7">vlieden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
