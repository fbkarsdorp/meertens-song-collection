  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Ziet dit <rhyme label="a" type="m">Schildery</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En aanhoord myn lied <rhyme label="a" type="m" corresp="#s1:l1">hierby</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">'t Is voor Jong en <rhyme label="b" type="m">Oud</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Het zy vry of reeds <rhyme label="b" type="m" corresp="#s1:l3">getrouwd</rhyme>;</l>
        <l id="s1:l5" met="3" type="+-">Gy ziet hier voor 't <rhyme label="c" type="m">begin</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Ware <rhyme label="c" type="m" corresp="#s1:l5">wedermin</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Van een verbonden <rhyme label="d" type="m">paar</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">In den Echt voor 't <rhyme label="d" type="m" corresp="#s1:l7">Trouw-Altaar</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">En deze vruchten hier <rhyme label="e" type="m">van</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Baard liefde tusschen vrouw en <rhyme label="e" type="m" corresp="#s1:l9">man</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Zy leefde zaam te <rhyme label="a" type="m">vreê</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En haar man bekwaam ter <rhyme label="a" type="m" corresp="#s2:l1">Zee</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Kreeg hier een <rhyme label="b" type="m">bezoek</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Maar het was een ong'luks <rhyme label="b" type="m" corresp="#s2:l3">vloek</rhyme>;</l>
        <l id="s2:l5" met="3" type="+-">Men vroeg onder een flesch <rhyme label="c" type="m">wyn</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Haar man als <rhyme label="c" type="m" corresp="#s2:l5">Kapitein</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Op een groot <rhyme label="d" type="m">Koopvaardy</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">En een goed accoord <rhyme label="d" type="m" corresp="#s2:l7">daarby</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">'t Accoord kwam daad'lyk <rhyme label="e" type="m">klaar</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Zelfs alhier met de <rhyme label="e" type="m" corresp="#s2:l9">eigenaar</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Nu kwam zyn <rhyme label="a" type="m">droefheid</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Want nu neemt hy zyn <rhyme label="a" type="m" corresp="#s3:l1">afscheid</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Van zyn dierbre <rhyme label="b" type="m">vrouw</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die hy niet graag verlaten <rhyme label="b" type="m" corresp="#s3:l3">wou</rhyme>;</l>
        <l id="s3:l5" met="3" type="+-">Hy drukte haar aan zyn <rhyme label="c" type="m">hart</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Vol van liefde <rhyme label="c" type="m" corresp="#s3:l5">smart</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Maar hy heeft haar <rhyme label="d" type="m">getroost</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Met hun lieve jonge <rhyme label="d" type="m" corresp="#s3:l7">kroost</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Maar door zyn oprechte <rhyme label="e" type="m">min</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">Wou deze reis niet in zyn <rhyme label="e" type="m" corresp="#s3:l9">zin</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Toen zy zyn in <rhyme label="a" type="m">zee</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Kwam den Turk heel gaauw en <rhyme label="a" type="m" corresp="#s4:l1">ree</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Schip en <rhyme label="b" type="m">Kapitein</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Moest by hem gevangen <rhyme label="b" type="m" corresp="#s4:l3">zyn</rhyme>;</l>
        <l id="s4:l5" met="3" type="+-">Men bood eerst <rhyme label="c" type="m">tegenstand</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Sloeg met stok en <rhyme label="c" type="m" corresp="#s4:l5">hand</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Maar door te weinig <rhyme label="d" type="m">kracht</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Kregen de Rovers d' <rhyme label="d" type="m" corresp="#s4:l7">overmagt</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">Zy bragten hem daar nog <rhyme label="e" type="m">by</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">In den Turkschen <rhyme label="e" type="m" corresp="#s4:l9">slaverny</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Nu wierd hy <rhyme label="a" type="m">gebragt</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Geboeid geketend door 'n <rhyme label="a" type="m" corresp="#s5:l1">wacht</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">In <rhyme label="b" type="m">gevangenis</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Schoon het onverdiend tog <rhyme label="b" type="m" corresp="#s5:l3">is</rhyme>;</l>
        <l id="s5:l5" met="3" type="+-">Dit noodlot viel hem zeer <rhyme label="c" type="m">hard</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Denkt eens welk een <rhyme label="c" type="m" corresp="#s5:l5">smart</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Daar hy zoo een jonge <rhyme label="d" type="m">bloed</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Vrouw en kind'ren derven <rhyme label="d" type="m" corresp="#s5:l7">moet</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">Niet eens slegt of kwaad <rhyme label="e" type="m">gedaan</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">En in gevangenis moet <rhyme label="e" type="m" corresp="#s5:l9">gaan</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Den Turk die vond <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Te laten zoo 'n jonge <rhyme label="a" type="m" corresp="#s6:l1">bloed</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Der gevangnis <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Maar tot eeuwgen <rhyme label="b" type="m" corresp="#s6:l3">slaverny</rhyme>;</l>
        <l id="s6:l5" met="3" type="+-">Den slaven meester heel <rhyme label="c" type="m">wreed</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Jaagt hem in het <rhyme label="c" type="m" corresp="#s6:l5">zweet</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Hy draagt geduldig zyn <rhyme label="d" type="m">lot</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">En aanbid d' algoeden <rhyme label="d" type="m" corresp="#s6:l7">God</rhyme>;</l>
        <l id="s6:l9" met="3" type="+-">Dat hy hem verlossen <rhyme label="e" type="m">zou</rhyme>,</l>
        <l id="s6:l10" met="4" type="+-">Weer te zyn by kindren en <rhyme label="e" type="m" corresp="#s6:l9">vrouw</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Ziet het <rhyme label="a" type="m">lotgeval</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">God hem tog eens helpen <rhyme label="a" type="m" corresp="#s7:l1">zal</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">Een Zee <rhyme label="b" type="m">Kapitein</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Moest tog eens zyn redder <rhyme label="b" type="m" corresp="#s7:l3">zyn</rhyme>;</l>
        <l id="s7:l5" met="3" type="+-">Ging naar de vrouw toen <rhyme label="c" type="m">heen</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Toen begon 't <rhyme label="c" type="m" corresp="#s7:l5">geween</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Vol droefheid van de <rhyme label="d" type="m">schrik</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Was zy op het <rhyme label="d" type="m" corresp="#s7:l7">oogenblik</rhyme>;</l>
        <l id="s7:l9" met="3" type="+-">Maar ziet met veel <rhyme label="e" type="m">mannekracht</rhyme>,</l>
        <l id="s7:l10" met="4" type="+-">Heeft zy direct een plan <rhyme label="e" type="m" corresp="#s7:l9">bedacht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Liefde tot haar <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Hier door maakte zy het <rhyme label="a" type="m" corresp="#s8:l1">plan</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Om als man <rhyme label="b" type="m">terstond</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Reizen tot zy hem <rhyme label="b" type="m" corresp="#s8:l3">wedervond</rhyme>;</l>
        <l id="s8:l5" met="3" type="+-">Zy maakte zich <rhyme label="c" type="m">gereed</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">En als man <rhyme label="c" type="m" corresp="#s8:l5">verkleed</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">Zoent zy hare kindren <rhyme label="d" type="m">teer</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">En zegt: uw Moeder! komt strak <rhyme label="d" type="m" corresp="#s8:l7">weer</rhyme></l>
        <l id="s8:l9" met="3" type="+-">Uw Vader! ik eerst zoeken <rhyme label="e" type="m">zal</rhyme>,</l>
        <l id="s8:l10" met="4" type="+-">Hemel! wat droevig <rhyme label="e" type="m" corresp="#s8:l9">lotgeval</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Zy kwam by haar <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Zyn slaverny zag zy <rhyme label="a" type="m" corresp="#s9:l1">dan</rhyme>,</l>
        <l id="s9:l3" met="3" type="+-">Maar als vrouw zeer <rhyme label="b" type="m">braaf</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Wierd zy by den Turk ook <rhyme label="b" type="m" corresp="#s9:l3">slaaf</rhyme>;</l>
        <l id="s9:l5" met="3" type="+-">'t Kwam by den Turk te <rhyme label="c" type="m">pas</rhyme>,</l>
        <l id="s9:l6" met="3" type="+-">Zyn verjaring <rhyme label="c" type="m" corresp="#s9:l5">was</rhyme>,</l>
        <l id="s9:l7" met="3" type="+-">Borduurde zy hem een <rhyme label="d" type="m">doek</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">En deed den Turk een <rhyme label="d" type="m" corresp="#s9:l7">verzoek</rhyme>,</l>
        <l id="s9:l9" met="3" type="+-">Hy vond deze doek zeer <rhyme label="e" type="m">schoon</rhyme>,</l>
        <l id="s9:l10" met="4" type="+-">Sprak: wat begeert gy? tot u <rhyme label="e" type="m" corresp="#s9:l9">loon</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">'K bid, ô groote <rhyme label="a" type="m">heer</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Schenkt dan tog myn man my <rhyme label="a" type="m" corresp="#s10:l1">weer</rhyme></l>
        <l id="s10:l3" met="3" type="+-">Als vrouw was 'k in <rhyme label="b" type="m">staat</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Om te wagen deze <rhyme label="b" type="m" corresp="#s10:l3">daad</rhyme>,</l>
        <l id="s10:l5" met="3" type="+-">Hy is myn beste <rhyme label="c" type="m">pand</rhyme>,</l>
        <l id="s10:l6" met="3" type="+-">Door de huwlyks <rhyme label="c" type="m" corresp="#s10:l5">band</rhyme>,</l>
        <l id="s10:l7" met="3" type="+-">Schenkt ons tog <rhyme label="d" type="m">vergiffenis</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Hy myn echte man tog <rhyme label="d" type="m" corresp="#s10:l7">is</rhyme>,</l>
        <l id="s10:l9" met="3" type="+-">Ons kindren nog hier <rhyme label="e" type="m">by</rhyme>,</l>
        <l id="s10:l10" met="4" type="+-">Zyn in Holland gelooft het <rhyme label="e" type="m" corresp="#s10:l9">my</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">Zyn hart wierd <rhyme label="a" type="m">doorweekt</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Toen die vrouw zoo bitter <rhyme label="a" type="m" corresp="#s11:l1">smeekt</rhyme>,</l>
        <l id="s11:l3" met="3" type="+-">'K schenk uw man u <rhyme label="b" type="m">weer</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Volgens beide u <rhyme label="b" type="m" corresp="#s11:l3">begeer</rhyme>;</l>
        <l id="s11:l5" met="3" type="+-">Omhelsd nu aan <rhyme label="c" type="m">elkaar</rhyme>,</l>
        <l id="s11:l6" met="3" type="+-">Keerd naar Holland <rhyme label="c" type="m" corresp="#s11:l5">maar</rhyme>,</l>
        <l id="s11:l7" met="3" type="+-">Leeft vrolyk wel te <rhyme label="d" type="m">vreê</rhyme>,</l>
        <l id="s11:l8" met="4" type="+-">Ik geef u den zegen <rhyme label="d" type="m" corresp="#s11:l7">mee</rhyme>;</l>
        <l id="s11:l9" met="3" type="+-">Begrypt welk een vreugde <rhyme label="e" type="m">klank</rhyme>,</l>
        <l id="s11:l10" met="4" type="+-">Zy betuigden hem hunnen <rhyme label="e" type="m" corresp="#s11:l9">dank</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="+-">Nu naar <rhyme label="a" type="m">Rotterdam</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Toen men daar 't geval <rhyme label="a" type="m" corresp="#s12:l1">vernam</rhyme>,</l>
        <l id="s12:l3" met="3" type="+-">Alles in rep en <rhyme label="b" type="m">roer</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Door de stad een vreugd <rhyme label="b" type="m" corresp="#s12:l3">rumoer</rhyme>;</l>
        <l id="s12:l5" met="3" type="+-">Hunne kinderen <rhyme label="c" type="m">terstond</rhyme>,</l>
        <l id="s12:l6" met="3" type="+-">Huppelden in 't <rhyme label="c" type="m" corresp="#s12:l5">rond</rhyme>,</l>
        <l id="s12:l7" met="3" type="+-">Zy huilde alle van <rhyme label="d" type="m">vreugd</rhyme>,</l>
        <l id="s12:l8" met="4" type="+-">En beschouwde hunne <rhyme label="d" type="m" corresp="#s12:l7">jeugd</rhyme>;</l>
        <l id="s12:l9" met="3" type="+-">Zulk eene liefde op <rhyme label="e" type="m">aard</rhyme>,</l>
        <l id="s12:l10" met="4" type="+-">Is inderdaad wel benydens <rhyme label="e" type="m" corresp="#s12:l9">waard</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="+-">Vrouwen al te <rhyme label="a" type="m">gaar</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Neemt hier aan een voorbeeld <rhyme label="a" type="m" corresp="#s13:l1">maar</rhyme>,</l>
        <l id="s13:l3" met="3" type="+-">Trouw tot in den <rhyme label="b" type="m">dood</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">'t Zy in vreugde of in <rhyme label="b" type="m" corresp="#s13:l3">nood</rhyme>,</l>
        <l id="s13:l5" met="3" type="+-">Leeft men in zorg en <rhyme label="c" type="m">druk</rhyme>,</l>
        <l id="s13:l6" met="3" type="+-">'t Is tog u <rhyme label="c" type="m" corresp="#s13:l5">geluk</rhyme>,</l>
        <l id="s13:l7" met="3" type="+-">Dat men elkaar regt <rhyme label="d" type="m">bemind</rhyme>,</l>
        <l id="s13:l8" met="4" type="+-">Zoo men alhier een voorbeeld <rhyme label="d" type="m" corresp="#s13:l7">vind</rhyme>,</l>
        <l id="s13:l9" met="3" type="+-">Als men maar zaam leeft te <rhyme label="e" type="m">vreê</rhyme>,</l>
        <l id="s13:l10" met="4" type="+-">Dan lopen alle zaken <rhyme label="e" type="m" corresp="#s13:l9">mee</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
