  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">PHillis, ach! wat kan 't my <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Of ik u al kusschen <rhyme label="b" type="m">mag</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Zoo gy my straks zou gaen <rhyme label="a" type="f" corresp="#s1:l1">haten</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Zoo 'k u eens te voren <rhyme label="b" type="m" corresp="#s1:l2">lag</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dat 'k me in de Echt u op wou <rhyme label="c" type="f">dragen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En wel wenschten tot myn <rhyme label="d" type="m">Vrouw</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Die my Eeuwig zou <rhyme label="c" type="f" corresp="#s1:l5">behagen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">En my troosten zou in <rhyme label="d" type="m" corresp="#s1:l6">rouw</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ach! dat onverschillig <rhyme label="a" type="f">kusschen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Kan niet met myn Min <rhyme label="b" type="m">bestaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En myn Liefde vlamme <rhyme label="a" type="f" corresp="#s2:l1">Blusschen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Maer het Stookt dezelven <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Ach! indien ik u moet <rhyme label="c" type="f">derven</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Of zoo gy myn Bede <rhyme label="d" type="m">afslaet</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Is myn grootste Vreucht te <rhyme label="c" type="f" corresp="#s2:l5">sterven</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">'t Graf myn grooste <rhyme label="d" type="m" corresp="#s2:l6">toeverlaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Daerom slyt met my uw <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Laet het eenzaem leven <rhyme label="b" type="m">daer</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Valt 'er dan al ramp te <rhyme label="a" type="f" corresp="#s3:l1">dragen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">'t Valt aen twee steeds minder <rhyme label="b" type="m" corresp="#s3:l2">Zwaer</rhyme></l>
        <l id="s3:l5" met="4" type="+-">'k Zal u Eeuwiglyk <rhyme label="c" type="f">beminnen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dat bezweer ik by de <rhyme label="d" type="m">Goon</rhyme>!</l>
        <l id="s3:l7" met="4" type="+-">Kom myn waerde ziel <rhyme label="c" type="f" corresp="#s3:l5">vorstinnen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Laet u dog niet langer <rhyme label="d" type="m" corresp="#s3:l6">noon</rhyme>.</l>
      </lg>
    </lg>
  </text>
