    <melody>Fortuin gij doet mijn zinnen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Myn Eva wil niet <rhyme label="a" type="f">rusten</rhyme>;</l>
        <l id="s1:l2" met="3" type="-+">Maer blijft al eens <rhyme label="b" type="m">ghesint</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Tot ongebonden <rhyme label="a" type="f" corresp="#s1:l1">lusten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En wat het Vleys <rhyme label="b" type="m" corresp="#s1:l2">bemint</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Sy raedt, ick soud’ mijn <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Mijn fiere jonge <rhyme label="d" type="m">Ieucht</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Tot wellust <rhyme label="c" type="f" corresp="#s1:l5">over-geven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En dienen van de <rhyme label="d" type="m" corresp="#s1:l6">vreucht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat soud’ ick dan <rhyme label="a" type="f">gewinnen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Als ick haer loopen <rhyme label="b" type="m">liet</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Een knagend’ hert van <rhyme label="a" type="f" corresp="#s2:l1">binnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En enckel <rhyme label="b" type="m" corresp="#s2:l2">Ziel-verdriet</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">’t En kan geen vreuchde <rhyme label="c" type="f">baren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat bot ter Hellen <rhyme label="d" type="m">stoot</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Maer eeuwigh qualijck <rhyme label="c" type="f" corresp="#s2:l5">varen</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">Want sonde baert de <rhyme label="d" type="m" corresp="#s2:l6">doot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick kan het wel <rhyme label="a" type="f">versinnen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hoe dat het dient <rhyme label="b" type="m">gestelt</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Maer ick gevoel van <rhyme label="a" type="f" corresp="#s3:l1">binnen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wat my doch dickmael <rhyme label="b" type="m" corresp="#s3:l2">quelt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Het stuck is soo <rhyme label="c" type="f">ghelegen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En ick vind’ dit in <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Als ick het goed’ wil <rhyme label="c" type="f" corresp="#s3:l5">plegen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Light my dat quade <rhyme label="d" type="m" corresp="#s3:l6">by</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ick heb een recht <rhyme label="a" type="f">vermaken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In Godes Wet en <rhyme label="b" type="m">Woort</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Mijn oogen konnen <rhyme label="a" type="f" corresp="#s4:l1">braken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En tranen brengen <rhyme label="b" type="m" corresp="#s4:l2">voort</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Wanneer ick kom te <rhyme label="c" type="f">lesen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wat my geboden <rhyme label="d" type="m">wort</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En als ick denck in <rhyme label="c" type="f" corresp="#s4:l5">desen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Hoe veel ick koom te <rhyme label="d" type="m" corresp="#s4:l6">kort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer ’t Boeck is nau <rhyme label="a" type="f">gesloten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En ’t lesen <rhyme label="b" type="m">af-gedaen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer komen gantsche <rhyme label="a" type="f" corresp="#s5:l1">Vloten</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En troupen voor my <rhyme label="b" type="m" corresp="#s5:l2">staen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Van allerley <rhyme label="c" type="f">gedachten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die my, door schijn van <rhyme label="d" type="m">lust</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Noch dickwils halve <rhyme label="c" type="f" corresp="#s5:l5">nachten</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Af-houden van mijn <rhyme label="d" type="m" corresp="#s5:l6">rust</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">’t Quaet, dat mijn sinnen <rhyme label="a" type="f">haten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Neem ick soo dickwils <rhyme label="b" type="m">voor</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Om eeuwigh na te <rhyme label="a" type="f" corresp="#s6:l1">laten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Te geven gheen <rhyme label="b" type="m" corresp="#s6:l2">gehoor</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Maer eer de <rhyme label="c" type="f">Sonne-stralen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ia selden noch soo <rhyme label="d" type="m">langh</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">In Chetijs schoot gaen <rhyme label="c" type="f" corresp="#s6:l5">dalen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Singh ick mijn oude <rhyme label="d" type="m" corresp="#s6:l6">sangh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Och! Dat ick was <rhyme label="a" type="f">ontbonden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van dit ellendigh <rhyme label="b" type="m">lijf</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat niet en soeckt als <rhyme label="a" type="f" corresp="#s7:l1">sonden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En sondight <rhyme label="b" type="m" corresp="#s7:l2">tijdt-verdrijf</rhyme>;</l>
        <l id="s7:l5" met="3" type="-+">Of woudje my dat <rhyme label="c" type="f">geven</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Die d’Hoogste zijt <rhyme label="d" type="m">genaemt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Ick wensch te mogen <rhyme label="c" type="f" corresp="#s7:l5">leven</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Gelijck het my <rhyme label="d" type="m" corresp="#s7:l6">betaemt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
