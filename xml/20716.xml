    <melody>Iets moet ik u Laura vragen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SOo der iemand komt te <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Datmen mach den Vasten <rhyme label="a" type="f" corresp="#s1:l1">breken</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Wantmen anders slap sou <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Houdt u of ghy 't niet en <rhyme label="c" type="f">hoorden</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">'t Zijn bedriechgelijcke <rhyme label="c" type="f" corresp="#s1:l4">woorden</rhyme>;</l>
        <l id="s1:l6" met="4" type="+-">'t Vasten dient voor <rhyme label="b" type="m" corresp="#s1:l3">medicijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Overdenckt het geen <rhyme label="a" type="f">geschreven</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Staet in 't wonderlijcke <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Van den grooten <rhyme label="b" type="m">Daniel</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die te Babylon <rhyme label="c" type="f">gevangen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Heeft begeert geensins 't <rhyme label="c" type="f" corresp="#s2:l4">ontfangen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Heydensch-spijs: verstaet ghy 't <rhyme label="b" type="m" corresp="#s2:l3">wel</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Daniel, en <rhyme label="a" type="f">Ananias</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">MisaÃ«l en <rhyme label="a" type="f" corresp="#s3:l1">Asarias</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Proufden niet des Konincx <rhyme label="b" type="m">spijs</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Sy verkoosen 't kruyd der <rhyme label="c" type="f">aerden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Siet soo datse d' Wet <rhyme label="c" type="f" corresp="#s3:l4">bewaerden</rhyme>!</l>
        <l id="s3:l6" met="4" type="+-">Houdt ghy oock de selfde <rhyme label="b" type="m" corresp="#s3:l3">wijs</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">S' Hebben slechte kost <rhyme label="a" type="f">gegeten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">S' Hebben gheene wijn <rhyme label="a" type="f" corresp="#s4:l1">gesleten</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Water was alleen hun <rhyme label="b" type="m">dranck</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">En nochtans zoo wierden <rhyme label="c" type="f">dese</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Meerder dan de rest <rhyme label="c" type="f" corresp="#s4:l4">gepresen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">(Waer van God moet hebben <rhyme label="b" type="m" corresp="#s4:l3">danck</rhyme>.)</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Meer gepresen, vetter, <rhyme label="a" type="f">vromer</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dan die droncken uyt den <rhyme label="a" type="f" corresp="#s5:l1">Romer</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Van des Konincks beste <rhyme label="b" type="m">wijn</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">'t Zijn dan anders niet als <rhyme label="c" type="f">praetjes</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Dat die uyt de beste <rhyme label="c" type="f" corresp="#s5:l4">vaetjes</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Wijnen drincken, gladder <rhyme label="b" type="m" corresp="#s5:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Siet dan wat dat doet het <rhyme label="a" type="f">Vasten</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">'t Maeckt de menschen sterck als <rhyme label="a" type="f" corresp="#s6:l1">quasten</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En 't vergoelijckt hare <rhyme label="b" type="m">le'en</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">Het verdrooght des lichaems <rhyme label="c" type="f">dampen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">'t Doet ons tegen Satan <rhyme label="c" type="f" corresp="#s6:l4">kampen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Het verheldert onse <rhyme label="b" type="m" corresp="#s6:l3">re'en</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Het verdrijft de quae <rhyme label="a" type="f">gedachten</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Door de welck de Duyvels <rhyme label="a" type="f" corresp="#s7:l1">trachten</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Ons te brengen tot een <rhyme label="b" type="m">val</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">'t Suyvert 't hert van quade <rhyme label="c" type="f">lusten</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">'t Brenght de ziel uyt 's werelts <rhyme label="c" type="f" corresp="#s7:l4">kusten</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Binnen 's hemels hooge <rhyme label="b" type="m" corresp="#s7:l3">wall'</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">En op dat ghy niet soudt <rhyme label="a" type="f">dencken</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Dat ick u wil woorden <rhyme label="a" type="f" corresp="#s8:l1">schencken</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">En geen re'en daer toe en <rhyme label="b" type="m">heb</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">Hoort daerom, hoort aen de <rhyme label="c" type="f">reden</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Waer me'e Christus heeft <rhyme label="c" type="f" corresp="#s8:l4">beleden</rhyme></l>
        <l id="s8:l6" met="4" type="+-">(Zoo ick uyt Matthaeus <rhyme label="b" type="m" corresp="#s8:l3">schep</rhyme>)</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Datter is een soort van <rhyme label="a" type="f">geesten</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Die door Vasten wel ten <rhyme label="a" type="f" corresp="#s9:l1">meesten</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">En door 't bidden raeckt aen <rhyme label="b" type="m">kant</rhyme>.</l>
        <l id="s9:l4" met="4" type="+-">Dies zoo ghy den Draeck wilt <rhyme label="c" type="f">winnen</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">En uw' saligheyd <rhyme label="c" type="f" corresp="#s9:l4">beminnen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Neemt dees middel by de <rhyme label="b" type="m" corresp="#s9:l3">hand</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Want de Duyvels hun <rhyme label="a" type="f">vermaecken</rhyme></l>
        <l id="s10:l2" met="4" type="+-">In het drincken, in het <rhyme label="a" type="f" corresp="#s10:l1">braecken</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">In het smullen, in de <rhyme label="b" type="m">soop</rhyme>.</l>
        <l id="s10:l4" met="4" type="+-">'t Vasten nauw'lijcks is <rhyme label="c" type="f">begonnen</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Of den Duyvel wordt <rhyme label="c" type="f" corresp="#s10:l4">verwonnen</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Dat'lijck tijdt hy op de <rhyme label="b" type="m" corresp="#s10:l3">loop</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">'t Vasten werckt noch meerder <rhyme label="a" type="f">wercken</rhyme></l>
        <l id="s11:l2" met="4" type="+-">(Zoomen uyt de Schrift kan <rhyme label="a" type="f" corresp="#s11:l1">mercken</rhyme>)</l>
        <l id="s11:l3" met="4" type="+-">Die w' om kortheyd <rhyme label="b" type="m">overslaen</rhyme>.</l>
        <l id="s11:l4" met="4" type="+-">Dit komt hier alleen te <rhyme label="c" type="f">seggen</rhyme></l>
        <l id="s11:l5" met="4" type="+-">(Wil'et u ter herten <rhyme label="c" type="f" corresp="#s11:l4">leggen</rhyme>)</l>
        <l id="s11:l6" met="4" type="+-">En met rust dan heenen <rhyme label="b" type="m" corresp="#s11:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">'t Vasten is de spijs der <rhyme label="a" type="f">Eng'len</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Onder welcken hun <rhyme label="a" type="f" corresp="#s12:l1">vermeng'len</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Of gerekent worden <rhyme label="b" type="m">die</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Die tot vasten hun <rhyme label="c" type="f">begeven</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Dies besteedt hier inn' u <rhyme label="c" type="f" corresp="#s12:l4">leven</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">En ick u in d' hemel <rhyme label="b" type="m" corresp="#s12:l3">sie</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
