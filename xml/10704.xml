    <melody>Het voer een maagdje over Rijn</melody>
    <categories>
      <category translation="amusement">vermaak</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">QVelt v niet meer met sorghen <rhyme label="a" type="m">swaer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Vermaeckt v hert, bruyckt deucht <rhyme label="a" type="m" corresp="#s1:l1">eerbaer</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wilt nu v vreucht <rhyme label="b" type="f">voortbringhen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En sonder sorghen <rhyme label="b" type="f" corresp="#s1:l3">singhen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met lusten drinckt die coele <rhyme label="a" type="m">Wijn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die altijdt even droevich <rhyme label="a" type="m" corresp="#s2:l1">zijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sy schijnen selden <rhyme label="b" type="f">rijcke</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Sy zijn niet <rhyme label="b" type="f" corresp="#s2:l3">suyverlijcke</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer die den Wijn by stoopen <rhyme label="a" type="m">drinckt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Hy lijckt wel rijck, zijn aenschijn <rhyme label="a" type="m" corresp="#s3:l1">blinckt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Zijn schat can hy niet <rhyme label="b" type="f">tellen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Gheen onrust sal hem <rhyme label="b" type="f" corresp="#s3:l3">quellen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Prins als ghy by t'Princesgen <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Drinckt wijn wt schalen, het Meysgen <rhyme label="a" type="m" corresp="#s4:l1">vrijt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Soo sult ghy eer <rhyme label="b" type="f">behalen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met trouwe sal sy't <rhyme label="b" type="f" corresp="#s4:l3">betalen</rhyme>.</l>
      </lg>
    </lg>
  </text>
