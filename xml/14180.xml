  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk wilde wel vrienden te <rhyme label="a" type="f">deghen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Als wy erghens zijn by <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat ydel praet worde <rhyme label="a" type="f" corresp="#s1:l1">versweghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En elck sprack Gods woorden <rhyme label="b" type="m" corresp="#s1:l2">reen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wilt die voort <rhyme label="c" type="f">bringen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Door leesen oft <rhyme label="c" type="f" corresp="#s1:l5">singen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Tot stichtinge ende <rhyme label="d" type="m">leer</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Want ydel <rhyme label="e" type="f">praten</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Moet hier zijn <rhyme label="e" type="f" corresp="#s1:l8">gelaten</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Want het mishaecht den <rhyme label="d" type="m" corresp="#s1:l7">Heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aldus vinden wy oock <rhyme label="a" type="f">geschreven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Van die yedel woorden <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Salmen rekenschap moeten <rhyme label="a" type="f" corresp="#s2:l1">geven</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Daer omme en spreecktse <rhyme label="b" type="m" corresp="#s2:l2">niet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Maer laetse <rhyme label="c" type="f">achterwegen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En alst is <rhyme label="c" type="f" corresp="#s2:l5">geleghen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat ghy vergadert <rhyme label="d" type="m">zijt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Wilt Dan malcanderen <rhyme label="e" type="f">leeren</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Met dat woort des <rhyme label="e" type="f" corresp="#s2:l8">Heeren</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">In desen quaden <rhyme label="d" type="m" corresp="#s2:l7">tijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Eertijtsloos placht aldus te <rhyme label="a" type="f">weesen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Alsmen ergens was <rhyme label="b" type="m">vergaert</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soo wert daer gods woort <rhyme label="a" type="f" corresp="#s3:l1">geleesen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En men sprack daer van <rhyme label="b" type="m" corresp="#s3:l2">vermaert</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Maer nu hoortmen <rhyme label="c" type="f">vertellen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dochters en <rhyme label="c" type="f" corresp="#s3:l5">gesellen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sijnse ergens <rhyme label="d" type="m">versaemt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Van trouwen en <rhyme label="e" type="f">habijten</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Sy haren <rhyme label="e" type="f" corresp="#s3:l8">tijtverslijten</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Het welck niet en <rhyme label="d" type="m" corresp="#s3:l7">betaemt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Keertmen hem by de oude <rhyme label="a" type="f">lieden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daermen sou wijsheyt leeren <rhyme label="b" type="m">Dan</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daer staet Gods woort oock wel <rhyme label="a" type="f" corresp="#s4:l1">besieden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Weynich spreken sy daer <rhyme label="b" type="m" corresp="#s4:l2">van</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Van neeringe en <rhyme label="c" type="f">comanschappen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Sy veel hebben te <rhyme label="c" type="f" corresp="#s4:l5">clappen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Daert herte vol van <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Daer sal de mont af <rhyme label="e" type="f">spreken</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Maer vrienden dees <rhyme label="e" type="f" corresp="#s4:l8">gebreken</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Dienen afgeleyt <rhyme label="d" type="m" corresp="#s4:l7">ghewis</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En wilt u selven toch niet <rhyme label="a" type="f">stellen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Als Die blinde werelt <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maer wilt hier ter needer <rhyme label="a" type="f" corresp="#s5:l1">vellen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Lust der oogen en <rhyme label="b" type="m" corresp="#s5:l2">hoochmoet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Wilt daer door niet <rhyme label="c" type="f">begraven</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">V geestelicke <rhyme label="c" type="f" corresp="#s5:l5">gaven</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Maer arbeyt daer inne <rhyme label="d" type="m">recht</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Datmen u niet <rhyme label="e" type="f">segget</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Dat ghyse in daerde, <rhyme label="e" type="f" corresp="#s5:l8">legget</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Ghelijck de quade <rhyme label="d" type="m" corresp="#s5:l7">knecht</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Spreeckt van die tijdelicke <rhyme label="a" type="f">dingen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Als die noodt vereyscht van <rhyme label="b" type="m">dy</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Want lichamelijcke <rhyme label="a" type="f" corresp="#s6:l1">oeffeningen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Syn weynich nut soe leesen <rhyme label="b" type="m" corresp="#s6:l2">wy</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Wilt die aen zijden <rhyme label="c" type="f">setten</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En op Gods woorden <rhyme label="c" type="f" corresp="#s6:l5">letten</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">V herten daer toe <rhyme label="d" type="m">went</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Volgt altijt haren <rhyme label="e" type="f">regel</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Door siet u in dien <rhyme label="e" type="f" corresp="#s6:l8">spiegel</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Waer dat ghy meest vry <rhyme label="d" type="m" corresp="#s6:l7">bent</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Want ick bevinde in veel <rhyme label="a" type="f">saken</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Dat wy zijn seer <rhyme label="b" type="m">onperfeckt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dus wilt u soecken quijt te <rhyme label="a" type="f" corresp="#s7:l1">maken</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Dat tegen de waerheyt <rhyme label="b" type="m" corresp="#s7:l2">streckt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Wacht u van woorden <rhyme label="c" type="f">lichtich</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Te spreeken <rhyme label="c" type="f" corresp="#s7:l5">onversichtich</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Oock alle <rhyme label="d" type="m">spotterien</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Te laten <rhyme label="e" type="f">onverholen</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Is oock soo sterck <rhyme label="e" type="f" corresp="#s7:l8">bevolen</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Dus elck wil voor hem <rhyme label="d" type="m" corresp="#s7:l7">sien</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Elck wil zijn mont hier in wel <rhyme label="a" type="f">bedwingen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Waer hy comt of waer hy <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Al van te spreken ydel <rhyme label="a" type="f" corresp="#s8:l1">dinghen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Want het sterck verboden <rhyme label="b" type="m" corresp="#s8:l2">staet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Maer compt ghy by <rhyme label="c" type="f">malcander</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Vermaent den een den <rhyme label="c" type="f" corresp="#s8:l5">ander</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Om toe te nemen int <rhyme label="d" type="m">goe</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Want dat is van <rhyme label="e" type="f">noode</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Maer ydel woorden <rhyme label="e" type="f" corresp="#s8:l8">snoode</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Elck neerstich van hem <rhyme label="d" type="m" corresp="#s8:l7">doe</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ick wilde doch wel dat ick <rhyme label="a" type="f">ware</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Van dese ghebreken <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Om dat hem niemant sou <rhyme label="a" type="f" corresp="#s9:l1">beswaren</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Door mijn woorden waer dat <rhyme label="b" type="m" corresp="#s9:l2">sy</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En om dat Godt <rhyme label="c" type="f">eerwaerdich</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Haet ydel praten <rhyme label="c" type="f" corresp="#s9:l5">lichtvaerdich</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Elck wiltse laten <rhyme label="d" type="m">fijn</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Woorden onnut <rhyme label="e" type="f">gesproken</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Sullen niet <rhyme label="e" type="f" corresp="#s9:l8">ongewroken</rhyme>,</l>
        <l id="s9:l10" met="3" type="-+">Van God gelaten <rhyme label="d" type="m" corresp="#s9:l7">zijn</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Naer dien dat wy hier <rhyme label="a" type="f">menichvuldich</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Sijn volgebreken alle <rhyme label="b" type="m">gaer</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Om voor den Heere te zijn <rhyme label="a" type="f" corresp="#s10:l1">onschuldich</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Soo moeten wy hier <rhyme label="b" type="m" corresp="#s10:l2">voorwaer</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Af leggen tallen <rhyme label="c" type="f">stonden</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Die aencleevende <rhyme label="c" type="f" corresp="#s10:l5">sonde</rhyme></l>
        <l id="s10:l7" met="3" type="-+">En voort al dat ons <rhyme label="d" type="m">druckt</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Dat wy des vleesch <rhyme label="e" type="f">begeeren</rhyme>,</l>
        <l id="s10:l9" met="3" type="-+">Hier altijt van ons <rhyme label="e" type="f" corresp="#s10:l8">weeren</rhyme>,</l>
        <l id="s10:l10" met="3" type="-+">Op dat ons wel <rhyme label="d" type="m" corresp="#s10:l7">geluckt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Siet hier mijn vrient die ick <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Hier hebt ghy mijn cleen <rhyme label="b" type="m">vermaen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Soo ghy daer iet sult staen <rhyme label="a" type="f" corresp="#s11:l1">vinden</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Dat u soude tegen <rhyme label="b" type="m" corresp="#s11:l2">gaen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Dat meucht ghy nu <rhyme label="c" type="f">hoeden</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Van my als te <rhyme label="c" type="f" corresp="#s11:l5">goeden</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Want mijn verstant is <rhyme label="d" type="m">cleyn</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Met om prijs te <rhyme label="e" type="f">winnen</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">Tis geensins mijn <rhyme label="e" type="f" corresp="#s11:l8">beginnen</rhyme>,</l>
        <l id="s11:l10" met="3" type="-+">Gedaen wt liefden <rhyme label="d" type="m" corresp="#s11:l7">Reyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
