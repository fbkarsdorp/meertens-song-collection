    <melody>Mij heeft gevangen een wijflijk beeld</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Mi heift ghevaen een wijflic <rhyme label="a" type="m">beild</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Het si mir lief dat elc man <rhyme label="a" type="m" corresp="#s1:l1">heild</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Wie zo es dan seggic <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Of ict zeide ende voorder <rhyme label="c" type="f">came</rhyme></l>
        <l id="s1:l5" met="4" type="-+">So ware mijn trueren <rhyme label="d" type="m">menichfald</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Neinic niet huer werde <rhyme label="c" type="f" corresp="#s1:l4">name</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Blijft in mi allein <rhyme label="d" type="m" corresp="#s1:l5">ghestald</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Si heift mijn hertze in huer <rhyme label="d" type="m" corresp="#s1:l5">ghewald</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Mi huecht wanneer zoe up mi <rhyme label="b" type="m" corresp="#s1:l3">ziet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wien salic mijn secreit <rhyme label="a" type="m">betrauwen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Der wroughers also menich <rhyme label="a" type="m" corresp="#s2:l1">leift</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Dies radic der reinre <rhyme label="b" type="m">vrauwen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dat zoe haer niet te kennene <rhyme label="c" type="f">gheift</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Elc minre hem wel te wachtene <rhyme label="d" type="m">heift</rhyme></l>
        <l id="s2:l6" met="4" type="-+">So vele der boosheit nu <rhyme label="c" type="f" corresp="#s2:l4">ghesciet</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Mi heift ghevaen een wijflic <rhyme label="d" type="m" corresp="#s2:l5">beild</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Het si mir lief dat elc man <rhyme label="d" type="m" corresp="#s2:l5">heild</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Wie zo es dan seggic <rhyme label="b" type="m" corresp="#s2:l3">niet</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ic wensche haer .M. goeder <rhyme label="a" type="m">jare</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Met vruechden al haer leven <rhyme label="a" type="m" corresp="#s3:l1">lanc</rhyme></l>
        <l id="s3:l3" met="4" type="+-">So waer ic bem of waer ic <rhyme label="b" type="m">vare</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Mijn herte heift zoe in haer <rhyme label="c" type="f">bedwanc</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Vrouwe wilt mi des gheven <rhyme label="d" type="m">danc</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Want het mi rechte minne <rhyme label="c" type="f" corresp="#s3:l4">riet</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Mi heift ghevaen een wijflic <rhyme label="d" type="m" corresp="#s3:l5">beild</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Het si mir lief dat elc man <rhyme label="d" type="m" corresp="#s3:l5">heild</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Wie zo es dan seggic <rhyme label="b" type="m" corresp="#s3:l3">niet</rhyme></l>
      </lg>
    </lg>
