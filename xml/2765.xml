    <melody>Schoonste nimf van het woud</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'t HOuwelijck is een droevigh <rhyme label="a" type="m">spel</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Groot <rhyme label="a" type="m" corresp="#s1:l1">gequel</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Swaren last op 't hert <rhyme label="b" type="f">gebonden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Alsser onlust, twist en <rhyme label="c" type="m">strijdt</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Wordt <rhyme label="c" type="m" corresp="#s1:l4">altijdt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Tusschen 't Echte-paer <rhyme label="b" type="f" corresp="#s1:l3">gevonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als des eenen smert en <rhyme label="a" type="m">pijn</rhyme> //</l>
        <l id="s2:l2" met="2" type="+-">schijnt te <rhyme label="a" type="m" corresp="#s2:l1">zijn</rhyme></l>
        <l id="s2:l3" met="4" type="+-">d' Anders lust en vreught <rhyme label="b" type="f">inwendigh</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Als d' een in tranen <rhyme label="c" type="m">smacht</rhyme> //</l>
        <l id="s2:l5" met="2" type="+-">d' Ander <rhyme label="c" type="m" corresp="#s2:l4">lacht</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">O dat Houw'lijck is <rhyme label="b" type="f" corresp="#s2:l3">ellendigh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als sy hebben beyd' <rhyme label="a" type="m">berou</rhyme> //</l>
        <l id="s3:l2" met="2" type="+-">Van de <rhyme label="a" type="m" corresp="#s3:l1">Trouw</rhyme></l>
        <l id="s3:l3" met="4" type="+-">O wat moet daer droefheydt <rhyme label="b" type="f">wesen</rhyme>!</l>
        <l id="s3:l4" met="4" type="+-">d' Eensamheydt die droevigh <rhyme label="c" type="m">is</rhyme> //</l>
        <l id="s3:l5" met="2" type="+-">Moet <rhyme label="c" type="m" corresp="#s3:l4">gewis</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Voor quaet Houw'lijck zijn <rhyme label="b" type="f" corresp="#s3:l3">gepresen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laet u 't hert niet worden <rhyme label="a" type="m">zwaer</rhyme> //</l>
        <l id="s4:l2" met="2" type="+-">Soete <rhyme label="a" type="m" corresp="#s4:l1">paer</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'t Saem gebrocht door suyver <rhyme label="b" type="f">minne</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Want de Godt van liefd' en <rhyme label="c" type="m">vree</rhyme> //</l>
        <l id="s4:l5" met="2" type="+-">Sal u <rhyme label="c" type="m" corresp="#s4:l4">twee</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Maecken eens van hert en <rhyme label="b" type="f" corresp="#s4:l3">sinne</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Door der liefden stercken <rhyme label="a" type="m">bant</rhyme> //</l>
        <l id="s5:l2" met="2" type="+-">Sal sijn <rhyme label="a" type="m" corresp="#s5:l1">hant</rhyme></l>
        <l id="s5:l3" met="4" type="+-">U soo vast te samen <rhyme label="b" type="f">binden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat gekijf en sulck <rhyme label="c" type="m">gedruys</rhyme> //</l>
        <l id="s5:l5" met="2" type="+-">In u <rhyme label="c" type="m" corresp="#s5:l4">Huys</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Nimmermeer sal woon-plaets <rhyme label="b" type="f" corresp="#s5:l3">vinden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Siet dat gy der Liefden <rhyme label="a" type="m">gloet</rhyme> //</l>
        <l id="s6:l2" met="2" type="+-">Altijdt <rhyme label="a" type="m" corresp="#s6:l1">voet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Wacht u voor het eerst <rhyme label="b" type="f">krackeelen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Denckt altijd dat Man en <rhyme label="c" type="m">Vrou</rhyme> //</l>
        <l id="s6:l5" met="2" type="+-">Vreugt en <rhyme label="c" type="m" corresp="#s6:l4">rou</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Vriend'lijck t' samen moeten <rhyme label="b" type="f" corresp="#s6:l3">deelen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Laet u rijcken zegen <rhyme label="a" type="m">Heer</rhyme> //</l>
        <l id="s7:l2" met="2" type="+-">dalen <rhyme label="a" type="m" corresp="#s7:l1">neer</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Op dit Paer, en laet haer <rhyme label="b" type="f">rijsen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Geeft haer steedts uwen <rhyme label="c" type="m">lof</rhyme> //</l>
        <l id="s7:l5" met="2" type="+-">Nieuwe <rhyme label="c" type="m" corresp="#s7:l4">stof</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Datse u hier namaels <rhyme label="b" type="f" corresp="#s7:l3">prijsen</rhyme>.</l>
      </lg>
    </lg>
  </text>
