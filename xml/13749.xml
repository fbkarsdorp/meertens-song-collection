  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">MYn <rhyme label="a" type="f">Beminde</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Hoe kunt ghy wesen van herten dus <rhyme label="b" type="m">versteent</rhyme>?</l>
        <l id="s1:l3" met="2" type="+-">Ach <rhyme label="a" type="f" corresp="#s1:l1">Melinde</rhyme>!</l>
        <l id="s1:l4" met="5" type="-+">Ey siet eens Hoe mijn ziel van droefheyt <rhyme label="b" type="m" corresp="#s1:l2">weent</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">‘t Is om dat <rhyme label="c" type="m">ghy</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Altijdt met stuursheyt <rhyme label="c" type="m" corresp="#s1:l5">my</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Hebt gaen <rhyme label="d" type="f">beoogen</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Sonder <rhyme label="d" type="f" corresp="#s1:l7">me-doogen</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">En nu <rhyme label="d" type="f" corresp="#s1:l7">onttogen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">V selschap noch te <rhyme label="e" type="m">meer</rhyme>,</l>
        <l id="s1:l11" met="3" type="-+">Ey keer, ey keer, ey <rhyme label="e" type="m" corresp="#s1:l10">keer</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Goddin, op mijn <rhyme label="e" type="m" corresp="#s1:l10">begeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Laet my <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Waer in dat ick so seer, aen u heb <rhyme label="b" type="m">misdaen</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-"><rhyme label="a" type="f" corresp="#s2:l1">Wt-verkooren</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Soo ‘t u gelieft, wijst my de foute <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Op dat ick <rhyme label="c" type="m">weet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Het quaet dat my is <rhyme label="c" type="m" corresp="#s2:l5">leet</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Soo ick ben <rhyme label="d" type="f">schuldigh</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Ick sal <rhyme label="d" type="f" corresp="#s2:l7">geduldigh</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Dragen <rhyme label="d" type="f" corresp="#s2:l7">veelvuldigh</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">De straf, O <rhyme label="e" type="m">Son</rhyme>,</l>
        <l id="s2:l11" met="3" type="-+">soo ghy, soo ghy, soo <rhyme label="e" type="m" corresp="#s2:l10">ghy</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Daer voor te last leght <rhyme label="e" type="m" corresp="#s2:l10">my</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Want ick <rhyme label="a" type="f">weete</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">(Hoe wel verdacht) dat ick niet schuldich <rhyme label="b" type="m">ben</rhyme>.</l>
        <l id="s3:l3" met="2" type="+-">Of wilt <rhyme label="a" type="f" corresp="#s3:l1">meten</rhyme></l>
        <l id="s3:l4" met="5" type="-+">De straf my toe, soo groot als yemant <rhyme label="b" type="m" corresp="#s3:l2">ken</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Bedencken <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Want ick die niet een <rhyme label="c" type="m" corresp="#s3:l5">sier</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Op aerde <rhyme label="d" type="f">vreese</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Mijn <rhyme label="d" type="f" corresp="#s3:l7">uytgelese</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Mits ‘t aertsch sal <rhyme label="d" type="f" corresp="#s3:l7">wesen</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Soo ghy ‘t wilt <rhyme label="e" type="m">onderstaen</rhyme>,</l>
        <l id="s3:l11" met="3" type="-+">Kom aen, Kom aen, Kom <rhyme label="e" type="m" corresp="#s3:l10">aen</rhyme></l>
        <l id="s3:l12" met="3" type="-+">En laet u bid ick <rhyme label="e" type="m" corresp="#s3:l10">raen</rhyme>.</l>
      </lg>
    </lg>
  </text>
