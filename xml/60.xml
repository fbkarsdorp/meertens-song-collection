  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WEl Grietje, wel waer <rhyme label="a" type="m">heen</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Heer! 't is soo lang <rhyme label="a" type="m" corresp="#s1:l1">eleen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Dat ick jou lest <rhyme label="b" type="m">sag</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Wel jeny <rhyme label="c" type="m">Angeniet</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Sat ick 't jouwent lestent <rhyme label="c" type="m" corresp="#s1:l4">niet</rhyme></l>
        <l id="s1:l6" met="3" type="+-">d' Hiele halve <rhyme label="b" type="m" corresp="#s1:l3">dagh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Heer ick ben soo <rhyme label="a" type="m">verstoort</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Grietjen hebjet wel <rhyme label="a" type="m" corresp="#s2:l1">ehoort</rhyme>?</l>
        <l id="s2:l3" met="3" type="+-">Onsse Trijn is de <rhyme label="b" type="m">Bruyd</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Maer het set noch <rhyme label="c" type="m">edaan</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Daer 'er soo is of <rhyme label="c" type="m" corresp="#s2:l4">eraan</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Van die drencke <rhyme label="b" type="m" corresp="#s2:l3">snuyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wat noot wast dronck hy <rhyme label="a" type="m">maar</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Maer Tiet is byem <rhyme label="a" type="m" corresp="#s3:l1">swaar</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Soo hy selfs <rhyme label="b" type="m">bekent</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">In waar hy gaet te <rhyme label="c" type="m">bier</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Daer is hy schuldig <rhyme label="c" type="m" corresp="#s3:l4">schier</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">'t Is armoe in 't <rhyme label="b" type="m" corresp="#s3:l3">end</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Angenietje watje <rhyme label="a" type="m">seght</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Eer ick nam sulcken <rhyme label="a" type="m" corresp="#s4:l1">knecht</rhyme></l>
        <l id="s4:l3" met="3" type="+-">Was ick liever <rhyme label="b" type="m">doot</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wat of te beduyen <rhyme label="c" type="m">heeft</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Dat de koe veel melck <rhyme label="c" type="m" corresp="#s4:l4">geeft</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Als hy 't self om <rhyme label="b" type="m" corresp="#s4:l3">stoot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ja ick keef op ongse <rhyme label="a" type="m">Trijn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Soo draese quam by <rhyme label="a" type="m" corresp="#s5:l1">mijn</rhyme></l>
        <l id="s5:l3" met="3" type="+-">Totten avond <rhyme label="b" type="m">toe</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Maer 't hantje is <rhyme label="c" type="m">egaen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">In et moet soo blijven <rhyme label="c" type="m" corresp="#s5:l4">staen</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Wat 'k er oock toe <rhyme label="b" type="m" corresp="#s5:l3">doe</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wel heer waer is heur <rhyme label="a" type="m">sin</rhyme>?</l>
        <l id="s6:l2" met="3" type="-+">In sietse dat met <rhyme label="a" type="m" corresp="#s6:l1">in</rhyme></l>
        <l id="s6:l3" met="3" type="+-">Se is immers gien <rhyme label="b" type="m">kijnt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ja Grietje seght dat <rhyme label="c" type="m">vry</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Nou ick sie wel t is veur <rhyme label="c" type="m" corresp="#s6:l4">my</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Al vergeefs <rhyme label="b" type="m" corresp="#s6:l3">epijnt</rhyme>.</l>
      </lg>
    </lg>
  </text>
