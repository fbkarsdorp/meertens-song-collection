    <tags/>
    <melody>Ik ging nog hedenmorgen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ik zag den Hemel <rhyme label="a" type="f">hooge</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Uytgestrekt breed en <rhyme label="b" type="m">wijd</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die in zijn hoogte <rhyme label="a" type="f" corresp="#s1:l1">droge</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">De Peyle van dees <rhyme label="b" type="m" corresp="#s1:l2">tijd</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Ik zag de Zonne en de <rhyme label="c" type="m">Maan</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ook ligt ligtende <rhyme label="d" type="f">Sterren</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Zeer klaar en helder <rhyme label="c" type="m" corresp="#s1:l5">staan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Mijn Hert begon te <rhyme label="a" type="f">dinken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En ’t werde geheel <rhyme label="b" type="m">vro</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Heer als dees Ligten <rhyme label="a" type="f" corresp="#s2:l1">blinken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Laat ons ligten <rhyme label="b" type="m" corresp="#s2:l2">alzo</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Dat wy zijn vol <rhyme label="c" type="m">Godvrugtigheyd</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En heel verligt van <rhyme label="d" type="f">binnen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Zonn’ der <rhyme label="c" type="m" corresp="#s2:l5">Geregtigheyd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Vogels <rhyme label="a" type="f">daar-en-boven</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hoorden ik groot en <rhyme label="b" type="m">kleyn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Verblijd haar Schepper <rhyme label="a" type="f" corresp="#s3:l1">loven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Met held’re stemme <rhyme label="b" type="m" corresp="#s3:l2">reyn</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Waar in mijn Hert zeer was <rhyme label="c" type="m">verheugd</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">’t Welk ook mijn Ziel <rhyme label="d" type="f">opwekte</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Tot Christelijke <rhyme label="c" type="m" corresp="#s3:l5">deugd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ik dagt ô Heer! der <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hoe wonder gaat het <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die wy hoorden te <rhyme label="a" type="f" corresp="#s4:l1">leeren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Komen ons leeren <rhyme label="b" type="m" corresp="#s4:l2">schier</rhyme>;</l>
        <l id="s4:l5" met="4" type="-+">Dees Vog’len maken my <rhyme label="c" type="m">beschaamd</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat ik ook niet <rhyme label="d" type="f">loove</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Gelijk als het <rhyme label="c" type="m" corresp="#s4:l5">betaamd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ik zag Rund’ren en <rhyme label="a" type="f">Schapen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In ’t nat bedouwde <rhyme label="b" type="m">Gras</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Naar Spijs en Voedzel <rhyme label="a" type="f" corresp="#s5:l1">rapen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gezond en wel te <rhyme label="b" type="m" corresp="#s5:l2">pas</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Die al te zamen in het <rhyme label="c" type="m">Groen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Haar Spijze gingen <rhyme label="d" type="f">eeten</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Om hen daar mee te <rhyme label="c" type="m" corresp="#s5:l5">voen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doe ik dit <rhyme label="a" type="f">overleyde</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dagt ik in mijn <rhyme label="b" type="m">gemoed</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Heer wild ons ’t Gras <rhyme label="a" type="f" corresp="#s6:l1">bereyden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Uw’s Woords lieff’lijk en <rhyme label="b" type="m" corresp="#s6:l2">zoet</rhyme>;</l>
        <l id="s6:l5" met="4" type="-+">Dat wy daer in mogen <rhyme label="c" type="m">geweyd</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Werden door u <rhyme label="d" type="f">genade</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Gelijk als David <rhyme label="c" type="m" corresp="#s6:l5">zeyd</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ik ging een weynig <rhyme label="a" type="f">verder</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En schouden ’t Werk vast <rhyme label="b" type="m">aan</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Doe vond ik eenen <rhyme label="a" type="f" corresp="#s7:l1">Herder</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Met zijne Schaapjens <rhyme label="b" type="m" corresp="#s7:l2">staan</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">Die by zijn Kudde hiel goe <rhyme label="c" type="m">wagt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Maar hoord eens na mijn <rhyme label="d" type="f">reden</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Want mijn Hert hier op <rhyme label="c" type="m" corresp="#s7:l5">dagt</rhyme>:</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hier uyt nem ik te <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Van deze Aarde <rhyme label="b" type="m">goed</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Hoe Christus onzen <rhyme label="a" type="f" corresp="#s8:l1">Heere</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ook zijne Schaapkens <rhyme label="b" type="m" corresp="#s8:l2">hoed</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Hoe hy voor zijn Schapen houd <rhyme label="c" type="m">wagt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ia zelfs zijn leven <rhyme label="d" type="f">zettet</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Voor ’t Goddelijke <rhyme label="c" type="m" corresp="#s8:l5">geslagt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Den Mensch ô Heere! <rhyme label="a" type="f">goedig</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Brengt gantsch geen Vrugten <rhyme label="b" type="m">voord</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Want ons leven <rhyme label="a" type="f" corresp="#s9:l1">hoogmoedig</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En is niet zo ’t <rhyme label="b" type="m" corresp="#s9:l2">behoord</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">In ’t kwade wy geoeffend <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En onze beste <rhyme label="d" type="f">werken</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Zijn niet dan enkel <rhyme label="c" type="m" corresp="#s9:l5">schijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Doen ben ik zonder <rhyme label="a" type="f">feylen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Gescheyden daar van <rhyme label="b" type="m">daan</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Ik zag een Hoeker <rhyme label="a" type="f" corresp="#s10:l1">zeylen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Met Visch zeer wel <rhyme label="b" type="m" corresp="#s10:l2">gelaan</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Vol en zoet al uyt der <rhyme label="c" type="m">Zee</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Die na de plaatze <rhyme label="d" type="f">zeylde</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Van de Maas-sluysche <rhyme label="c" type="m" corresp="#s10:l5">Stee</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">O Mensch wild dog op <rhyme label="a" type="f">rijzen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Brengt vrugten <rhyme label="b" type="m">overvloed</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Wild uwen Schepper <rhyme label="a" type="f" corresp="#s11:l1">prijzen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Die dees genaad’ u <rhyme label="b" type="m" corresp="#s11:l2">doet</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">Neemt waar den aangenamen <rhyme label="c" type="m">tijd</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Den Dag der <rhyme label="d" type="f">Zaligheden</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">In alles dankbaar <rhyme label="c" type="m" corresp="#s11:l5">zijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
