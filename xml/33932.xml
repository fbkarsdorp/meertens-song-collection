  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VEel quamen tot ons <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met hare Kinders <rhyme label="b" type="f">naken</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hebbende groot <rhyme label="a" type="m" corresp="#s1:l1">begeer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat hy die soude <rhyme label="b" type="f" corresp="#s1:l2">raken</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Leggen op 't hooft sijn <rhyme label="c" type="f">handen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En soo doen sijn <rhyme label="d" type="m">gebedt</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Maer sy-lie worden van <rhyme label="c" type="f" corresp="#s1:l5">de</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Jongeren eerst <rhyme label="d" type="m" corresp="#s1:l6">belet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als Jesus 't wierd' <rhyme label="a" type="m">gewaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Heeft dat niet wel <rhyme label="b" type="f">genoomen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dus hy haer riep te <rhyme label="a" type="m" corresp="#s2:l1">gaer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En seyd', laet tot mijn <rhyme label="b" type="f" corresp="#s2:l2">koomen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Kinderen: want Goods <rhyme label="c" type="f">Rijk</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Rechtelijk <rhyme label="d" type="m">toe-behoort</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Als eygen dees <rhyme label="c" type="f" corresp="#s2:l5">gelijke</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Luystert nu na mijn <rhyme label="d" type="m" corresp="#s2:l6">woort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Soo wie niet aen en <rhyme label="a" type="m">neemt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Goodts Rijk, als een kleyn <rhyme label="b" type="f">Kinde</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die sal daer van sijn <rhyme label="a" type="m" corresp="#s3:l1">vreemt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Sal hem daer niet in <rhyme label="b" type="f" corresp="#s3:l2">vinde</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Hy greep haer met <rhyme label="c" type="f">beweegen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Leydt op haer hooft sijn <rhyme label="d" type="m">handt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hy gaf haer sijne <rhyme label="c" type="f" corresp="#s3:l5">seegen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Toen gingh hy daer van <rhyme label="d" type="m" corresp="#s3:l6">kant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O Jesu, goeden <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Jaeght uyt ons <rhyme label="b" type="f">hovaerdijen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Doet ons ons stellen <rhyme label="a" type="m" corresp="#s4:l1">neer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In needrigheydt <rhyme label="b" type="f" corresp="#s4:l2">verblijen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Laet ons togh ook uw <rhyme label="c" type="f">seegen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van uwe handt <rhyme label="d" type="m">ontfaen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Als deese Kinders <rhyme label="c" type="f" corresp="#s4:l5">kreegen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En soo Goodts Rijk <rhyme label="d" type="m" corresp="#s4:l6">ingaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
