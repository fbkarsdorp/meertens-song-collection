    <melody>Ach Belinde</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VAert, myn Ziele, vaert, <rhyme label="a" type="f">ontbonden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">In de Zee van alle <rhyme label="b" type="m">goedt</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Om de liefde te <rhyme label="a" type="f" corresp="#s1:l1">door-gronden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die Godt aen de menschen <rhyme label="b" type="m" corresp="#s1:l2">doet</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Ende seylt met uw' <rhyme label="c" type="f">gedachten</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Van de Kribbe tot het <rhyme label="d" type="m">Kruys</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Om de liefde te <rhyme label="c" type="f" corresp="#s1:l5">betrachten</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Eer gy weder-keert naer <rhyme label="d" type="m" corresp="#s1:l6">huys</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maer wanneer gy kont <rhyme label="a" type="f">geraeken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Tot het Heyligh <rhyme label="b" type="m">Sacrament</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Daer Godt doet de herten <rhyme label="a" type="f" corresp="#s2:l1">blaeken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Daer Godts liefd' haer paelen <rhyme label="b" type="m" corresp="#s2:l2">kent</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Hier moet gy uw' seylen <rhyme label="c" type="f">strycken</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Voor dit Goddelyck <rhyme label="d" type="m">banket</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Alle liefde moet hier <rhyme label="c" type="f" corresp="#s2:l5">wycken</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Daer Godt desen Pael-steen <rhyme label="d" type="m" corresp="#s2:l6">set</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Smyt hier Ancker, hier niet <rhyme label="a" type="f">verder</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Gy en kont niet hooger <rhyme label="b" type="m">gaen</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Want de liefde van den <rhyme label="a" type="f" corresp="#s3:l1">Herder</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Blyft hier als gevangen <rhyme label="b" type="m" corresp="#s3:l2">staen</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Jae, gy Ziele, moet hier <rhyme label="c" type="f">seggen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dat den Heer, die t'al <rhyme label="d" type="m">vermagh</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Grooter jonst noyt by kost <rhyme label="c" type="f" corresp="#s3:l5">leggen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Al hy hier brenght voor den <rhyme label="d" type="m" corresp="#s3:l6">dagh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ah! wat kander dieper <rhyme label="a" type="f">sincken</rhyme></l>
        <l id="s4:l2" met="4" type="+-">In den grondt van ons <rhyme label="b" type="m">gemoedt</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Godt geeft t'eten, en te <rhyme label="a" type="f" corresp="#s4:l1">drincken</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Aen den mensch syn Vleesch, en <rhyme label="b" type="m" corresp="#s4:l2">Bloedt</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Ah! wat kan men soeter <rhyme label="c" type="f">wenschen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Godt geeft hem tot spys en <rhyme label="d" type="m">dranck</rhyme>;</l>
        <l id="s4:l7" met="4" type="+-">Om te woonen met de <rhyme label="c" type="f" corresp="#s4:l5">menschen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Stelt hy hem als in <rhyme label="d" type="m" corresp="#s4:l6">bedwanck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Hierom heeft hy willen <rhyme label="a" type="f">daelen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Uyt des Vaders milden <rhyme label="b" type="m">schoot</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En genesen onse <rhyme label="a" type="f" corresp="#s5:l1">quaelen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Onder schyn van wyn, en <rhyme label="b" type="m" corresp="#s5:l2">broodt</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Ziel, en wilt niet voorder <rhyme label="c" type="f">vaeren</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Maer valt uwen Godt te <rhyme label="d" type="m">voet</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">En verliest u in de <rhyme label="c" type="f" corresp="#s5:l5">baeren</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Van syn heyligh Vleesch, en <rhyme label="d" type="m" corresp="#s5:l6">Bloedt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hier syn d'Hemelsche <rhyme label="a" type="f">wellusten</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Hier is t'leven met den <rhyme label="b" type="m">Geest</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">In die Baeren kan men <rhyme label="a" type="f" corresp="#s6:l1">rusten</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Alser op-staet groot <rhyme label="b" type="m" corresp="#s6:l2">tempeest</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Die in desen vloedt <rhyme label="c" type="f">versincken</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Van dien rycken <rhyme label="d" type="m">Oceaen</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Sullen naer dit leven <rhyme label="c" type="f" corresp="#s6:l5">blincken</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Boven Sterr', en Sonn', en <rhyme label="d" type="m" corresp="#s6:l6">Maen</rhyme>.</l>
      </lg>
    </lg>
  </text>
