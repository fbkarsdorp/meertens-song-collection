    <tags/>
    <melody>Wij twee zijn hier alleen</melody>
  <author>C.P. van Wesbusch</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EY! sie hoe <rhyme label="a" type="m">Amarill'</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met Tyter in het <rhyme label="a" type="m" corresp="#s1:l1">stil</rhyme>,</l>
        <l id="s1:l3" met="6" type="+-">Hare lusjes boet// hare lusjes <rhyme label="b" type="m">boet</rhyme></l>
        <l id="s1:l4" met="2" type="-+">In 't Wout// soo <rhyme label="c" type="m">stout</rhyme>:</l>
        <l id="s1:l5" met="5" type="-+">D'aenschouwer meynt schier dat hy't sellefs <rhyme label="b" type="m" corresp="#s1:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Voorwaer mijn hartjen <rhyme label="a" type="m">lacht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wanneer my in't <rhyme label="a" type="m" corresp="#s2:l1">ghedacht</rhyme></l>
        <l id="s2:l3" met="6" type="+-">Hare deuntjes schiet// hare deuntjes <rhyme label="b" type="m">schiet</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Die sy// soo <rhyme label="c" type="m">vry</rhyme></l>
        <l id="s2:l5" met="5" type="-+">Van Tyter haren vrient, na wensch <rhyme label="b" type="m" corresp="#s2:l3">geniet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mijn lieve Beekje <rhyme label="a" type="m">soet</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">Wanneer ick u <rhyme label="a" type="m" corresp="#s3:l1">ontmoet</rhyme></l>
        <l id="s3:l3" met="6" type="+-">Met die selve vreucht// met die selve <rhyme label="b" type="m">vreucht</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Vlucht niet// maer <rhyme label="c" type="m">biedt</rhyme></l>
        <l id="s3:l5" met="5" type="-+">(Dit bid ick u) aen my u <rhyme label="b" type="m" corresp="#s3:l3">Lentens-jeucht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Och! 't hoofjen schudt vast <rhyme label="a" type="m">Neen</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">En 't hartjen schijnt te <rhyme label="a" type="m" corresp="#s4:l1">vreen</rhyme>:</l>
        <l id="s4:l3" met="6" type="+-">Amarillisje Lief//Amarillisje <rhyme label="b" type="m">Lief</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Ey! dra// seght <rhyme label="c" type="m">Ia</rhyme></l>
        <l id="s4:l5" met="5" type="-+">En doet ons hartjes niet dit <rhyme label="b" type="m" corresp="#s4:l3">ongherief</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer 't hoofjen al weer <rhyme label="a" type="m">schudt</rhyme>!</l>
        <l id="s5:l2" met="3" type="-+">Waer toe ist veynsen <rhyme label="a" type="m" corresp="#s5:l1">nut</rhyme>?</l>
        <l id="s5:l3" met="6" type="+-">Segt my reden waerom// segt my redden <rhyme label="b" type="m">waerom</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Nu ras// gheeft 't <rhyme label="c" type="m">pas</rhyme>;</l>
        <l id="s5:l5" met="5" type="-+">Helaes! mijn Amarille veynst haer <rhyme label="b" type="m" corresp="#s5:l3">stom</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Mach ick dan niet een <rhyme label="a" type="m">woort</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Ghenieten, soo gae'k <rhyme label="a" type="m" corresp="#s6:l1">voort</rhyme>;</l>
        <l id="s6:l3" met="6" type="+-">Amarille ick gae//Amarille ick <rhyme label="b" type="m">gae</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Van hier// denckt <rhyme label="c" type="m">schier</rhyme>:</l>
        <l id="s6:l5" met="5" type="-+">Dit veynsen sal my seecker wesen <rhyme label="b" type="m" corresp="#s6:l3">schar</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer wat ick bid, of <rhyme label="a" type="m">praet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Mijn Amaril denckt: <rhyme label="a" type="m" corresp="#s7:l1">gaet</rhyme></l>
        <l id="s7:l3" met="6" type="+-">En sy blijft by haer eer// en sy blijft by haer <rhyme label="b" type="m">eer</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Met recht// niet <rhyme label="c" type="m">slecht</rhyme>;</l>
        <l id="s7:l5" met="5" type="-+">Dies ick weer tot mijn Amarille <rhyme label="b" type="m" corresp="#s7:l3">keer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O soete <rhyme label="a" type="m">Amaril</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Nu weyghert ghy mijn <rhyme label="a" type="m" corresp="#s8:l1">wil</rhyme>,</l>
        <l id="s8:l3" met="6" type="+-">En ick was heen gegaen// en ick was hheen <rhyme label="b" type="m">gegaen</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Maer kom// <rhyme label="c" type="m">wed'rom</rhyme>,</l>
        <l id="s8:l5" met="5" type="-+">En neem u voor een eerb're Maget <rhyme label="b" type="m" corresp="#s8:l3">aen</rhyme>.</l>
      </lg>
    </lg>
  </text>
