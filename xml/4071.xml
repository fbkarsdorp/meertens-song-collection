    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>Och hoe mag hem zijn leven lusten</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEere God waer was doe mijn <rhyme label="a" type="f">ghedochte</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Doen ic der werelt ane <rhyme label="b" type="m">claf</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Om al dat si mi gheuen <rhyme label="a" type="f" corresp="#s1:l1">mochte</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">En diende ic haer niet eenen <rhyme label="b" type="m" corresp="#s1:l2">dach</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O werelt ic wil nu orlof <rhyme label="a" type="f">nemen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ick heb v alte lange <rhyme label="b" type="m">ghedient</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Crancken loon sult ghi hem <rhyme label="a" type="f" corresp="#s2:l1">gheuen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Die totten eynde sal sijn v <rhyme label="b" type="m" corresp="#s2:l2">vrient</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Eertsche dingen ende <rhyme label="a" type="f">creaturen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die onghestadich sijn ende <rhyme label="b" type="m">loos</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Dat heb ic vonden in corter <rhyme label="a" type="f" corresp="#s3:l1">vren</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Nu rouwet mi dat icxse <rhyme label="b" type="m" corresp="#s3:l2">koos</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O eertsche minne ghi moet <rhyme label="a" type="f">faelgieren</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Ghi en blijft maer eenen corten <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Nemmermeer in gheen <rhyme label="a" type="f" corresp="#s4:l1">vren</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En wil ick draghen dit <rhyme label="b" type="m" corresp="#s4:l2">habijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O werelt ghi slacht den schonen <rhyme label="a" type="f">grauen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Die daer buten so groene <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Maer diese van binnen wel <rhyme label="a" type="f" corresp="#s5:l1">besaghe</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Hi soude aensien een droef <rhyme label="b" type="m" corresp="#s5:l2">gelaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O werlt gaet wt minen <rhyme label="a" type="f">ogen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Ick wil v eeweliken <rhyme label="b" type="m">vlien</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Want ghi hebt mi <rhyme label="a" type="f" corresp="#s6:l1">bedroghen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Met minnen en wil ick v nyet meer <rhyme label="b" type="m" corresp="#s6:l2">aensien</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O werelt ic meyne v te <rhyme label="a" type="f">ontulien</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Ende ghi soect mi in allen <rhyme label="b" type="m">steden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Met soe menich subtile <rhyme label="a" type="f" corresp="#s7:l1">englen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Hoe ghi mi mocht tot uwaerts <rhyme label="b" type="m" corresp="#s7:l2">leden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die der werelt dient is seer <rhyme label="a" type="f">onwijs</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dies sijt seker ende <rhyme label="b" type="m">ghewes</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Hi verliest loon ende <rhyme label="a" type="f" corresp="#s8:l1">prijs</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Ende sticht sijn woninge op een <rhyme label="b" type="m" corresp="#s8:l2">ijs</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Die ghene die hen te tide <rhyme label="a" type="f">afsceyden</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Van deser werelt brooschen <rhyme label="b" type="m">troost</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Blidelijc mach hy hem <rhyme label="a" type="f" corresp="#s9:l1">verbliden</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Want hi wort van al <rhyme label="b" type="m" corresp="#s9:l2">verlost</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hi en derf hem niet <rhyme label="a" type="f">veruaren</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Al wort hem dat verbeyden <rhyme label="b" type="m">swaer</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Alle dat hi mach met herten <rhyme label="a" type="f" corresp="#s10:l1">begheren</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Dat wert hem int eynde <rhyme label="b" type="m" corresp="#s10:l2">openbaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
