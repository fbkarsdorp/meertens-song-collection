    <tags/>
    <melody>Het vuur brandt zeer</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">IEsus zoet // Mijn Bruidegom <rhyme label="a" type="m">valjant</rhyme>!</l>
        <l id="s1:l2" met="5" type="+-">Mijn gemoed // Mijn hert, mijn ziel <rhyme label="a" type="m" corresp="#s1:l1">door-brand</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Ik ben van uwer minnen <rhyme label="b" type="m">krank</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Troost my, O Heer! en bei niet <rhyme label="b" type="m" corresp="#s1:l3">lang</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Dat vuur brand <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gods liefde nog veel <rhyme label="c" type="m" corresp="#s1:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">'t Vuur brand zeer // Gods liefde nog veel <rhyme label="a" type="m">meer</rhyme>;</l>
        <l id="s2:l2" met="5" type="+-">Nogtans Heer! // Wil ik mijn lichaam <rhyme label="a" type="m" corresp="#s2:l1">te'er</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Veel liever branden in het <rhyme label="b" type="m">vuur</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dan van U scheiden maar een <rhyme label="b" type="m" corresp="#s2:l3">uur</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Dat vuur brand <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Gods liefde nog veel <rhyme label="c" type="m" corresp="#s2:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Trek naa dy // Mijn ziel, die U <rhyme label="a" type="m">bemind</rhyme>:</l>
        <l id="s3:l2" met="5" type="+-">Maak my bly // Ik ben uw Bruid, uw <rhyme label="a" type="m" corresp="#s3:l1">kind</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Geef my de deugd, die by <rhyme label="b" type="m">ontbreekt</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">Mijn hert in liefde meer <rhyme label="b" type="m" corresp="#s3:l3">ontsteekt</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Dat vuur brand <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Gods liefde nog veel <rhyme label="c" type="m" corresp="#s3:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Maak my nu // Van creaturen <rhyme label="a" type="m">bloot</rhyme>,</l>
        <l id="s4:l2" met="5" type="+-">Dat ik U // Mag dienen tot der <rhyme label="a" type="m" corresp="#s4:l1">dood</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Uw wille laat mijn wille <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Uw graci stort al-tijd in <rhyme label="b" type="m" corresp="#s4:l3">mijn</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Dat vuur brand <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Gods liefde nog veel <rhyme label="c" type="m" corresp="#s4:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="+-">Heer! geeft my // Een liefde al-zoo <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s5:l2" met="5" type="+-">Dat nog pijn // Nog honger, nog de <rhyme label="a" type="m" corresp="#s5:l1">dood</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Nog vuur, nog sweerd, nog <rhyme label="b" type="m">teegen-spoed</rhyme></l>
        <l id="s5:l4" met="4" type="-+">My van uw liefde scheden <rhyme label="b" type="m" corresp="#s5:l3">doet</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Dat vuur brand <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Gods liefde nog veel <rhyme label="c" type="m" corresp="#s5:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="+-">Ik peinz, Heer! wel duizend-maal om <rhyme label="a" type="m">dy</rhyme>.</l>
        <l id="s6:l2" met="5" type="+-">Og! wanneer // Zult Gy my maaken <rhyme label="a" type="m" corresp="#s6:l1">bly</rhyme>?</l>
        <l id="s6:l3" met="4" type="+-">Kom Heer! kom Heer! en ei niet <rhyme label="b" type="m">meer</rhyme>!</l>
        <l id="s6:l4" met="4" type="-+">Mijn hert verlangd naa U zoo <rhyme label="b" type="m" corresp="#s6:l3">zeer</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Dat vuur brand <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Gods liefde nog veel <rhyme label="c" type="m" corresp="#s6:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="+-">Geld en goed // En ook mijn <rhyme label="a" type="m">vaader-land</rhyme>,</l>
        <l id="s7:l2" met="5" type="+-">Vlees en bloed // En al dat is <rhyme label="a" type="m" corresp="#s7:l1">pleizant</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Verlaat ik om uw liefde, <rhyme label="b" type="m">Heer</rhyme>!</l>
        <l id="s7:l4" met="4" type="-+">Want ik mijn hert tot U gants <rhyme label="b" type="m" corresp="#s7:l3">keer</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">Dat vuur brand <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Gods liefde nog veel <rhyme label="c" type="m" corresp="#s7:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="+-">Bruidegom fijn // O Prince <rhyme label="a" type="m">excellent</rhyme>!</l>
        <l id="s8:l2" met="5" type="+-">Schenk tog mijn // Uw liefd' tot een <rhyme label="a" type="m" corresp="#s8:l1">present</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">'t Geloof en hoop moet eens <rhyme label="b" type="m">vergaan</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Maar liefde die blijft eeuwig <rhyme label="b" type="m" corresp="#s8:l3">staan</rhyme>.</l>
        <l id="s8:l5" met="2" type="-+">Dat vuur brand <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Gods liefde nog veel <rhyme label="c" type="m" corresp="#s8:l5">meer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
