  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">JOhannes de <rhyme label="a" type="f">Dooper</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die een trou Sent-bode <rhyme label="b" type="m">was</rhyme></l>
        <l id="s1:l3" met="3" type="+-">En oock een <rhyme label="a" type="f" corresp="#s1:l1">Voor-looper</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Van de Heere Christus <rhyme label="b" type="m" corresp="#s1:l2">ras</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Quam bereyden sijnen <rhyme label="c" type="m">padt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Om te gane naer de <rhyme label="c" type="m" corresp="#s1:l5">stadt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Dese <rhyme label="a" type="f">predicacy</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Hoordemen Johannes <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Tot de Joodsche <rhyme label="a" type="f" corresp="#s2:l1">nacy</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die quamen tot sijn <rhyme label="b" type="m" corresp="#s2:l2">sermoen</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Want hy seyde, betert <rhyme label="c" type="m">u</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">'t Hemelrijck is na by <rhyme label="c" type="m" corresp="#s2:l5">nu</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Sijn kleederen <rhyme label="a" type="f">waren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Soo d' Euangelist <rhyme label="b" type="m">vertelt</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Al van <rhyme label="a" type="f" corresp="#s3:l1">Kemels-hairen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En sijn spijse op het <rhyme label="b" type="m" corresp="#s3:l2">velt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Wilden honigh, en <rhyme label="c" type="m">sprinck-haen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Seer sober quam hy <rhyme label="c" type="m" corresp="#s3:l5">gegaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Tot hem sagh men <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Schier Jerusalem, en 't <rhyme label="b" type="m">landt</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">En veel volcks met <rhyme label="a" type="f" corresp="#s4:l1">hoopen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Tot aen der Jordanen <rhyme label="b" type="m" corresp="#s4:l2">kant</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Daer lieten sy doopen <rhyme label="c" type="m">haer</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Bekenden haer sonden <rhyme label="c" type="m" corresp="#s4:l5">zwaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Als hy nu sagh <rhyme label="a" type="f">komen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Phariseen, en <rhyme label="b" type="m">Sadduceen</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Soo ginck hy haer <rhyme label="a" type="f" corresp="#s5:l1">noemen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ghy Adders geslacht <rhyme label="b" type="m" corresp="#s5:l2">onreen</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Wie heeftet u wijs <rhyme label="c" type="m">gemaeckt</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Dat u Godes toren <rhyme label="c" type="m" corresp="#s5:l5">naeckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Doet boete seer <rhyme label="a" type="f">weerdigh</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Brengt oprechte vruchten <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Dat men niet <rhyme label="a" type="f" corresp="#s6:l1">lichtveerdigh</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Van u nimmermeer en <rhyme label="b" type="m" corresp="#s6:l2">hoort</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Dat Abr'ham u Vader <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Want ick segh u voor <rhyme label="c" type="m" corresp="#s6:l5">gewis</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">* 7. Vast, en sonder <rhyme label="a" type="f">meenen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Dat God wel verwecken <rhyme label="b" type="m">kan</rhyme></l>
        <l id="s7:l3" met="3" type="+-">Uyt dees harde <rhyme label="a" type="f" corresp="#s7:l1">steenen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Abraham kinderen <rhyme label="b" type="m" corresp="#s7:l2">dan</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">Daer hooren wy het <rhyme label="c" type="m">beleyt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Van rechte <rhyme label="c" type="m" corresp="#s7:l5">boetveerdigheyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Aen den wortel der <rhyme label="a" type="f">boomen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Staet de bijl al vast en <rhyme label="b" type="m">blinckt</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Om niet te <rhyme label="a" type="f" corresp="#s8:l1">verschoonen</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">Die gheen goe vrucht voort en <rhyme label="b" type="m" corresp="#s8:l2">bringht</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Wordt af-gehouwen met <rhyme label="c" type="m">dangier</rhyme></l>
        <l id="s8:l6" met="4" type="+-">En geworpen in het <rhyme label="c" type="m" corresp="#s8:l5">vyer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Den doop ick u <rhyme label="a" type="f">geve</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Met water, tot boete <rhyme label="b" type="m">vry</rhyme>:</l>
        <l id="s9:l3" met="3" type="+-">Maer hy komt <rhyme label="a" type="f" corresp="#s9:l1">verheven</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Die veel stercker dan ick <rhyme label="b" type="m" corresp="#s9:l2">zy</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Wiens schoenen dat ick, <rhyme label="c" type="m">siet</rhyme>!</l>
        <l id="s9:l6" met="4" type="+-">Waerdigh ben te dragen <rhyme label="c" type="m" corresp="#s9:l5">niet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Die sal u <rhyme label="a" type="f">behendigh</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Doopen al met sijnen <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s10:l3" met="3" type="+-">En met vyer <rhyme label="a" type="f" corresp="#s10:l1">inwendigh</rhyme>:</l>
        <l id="s10:l4" met="4" type="+-">Hem toch wel van herten <rhyme label="b" type="m" corresp="#s10:l2">vreest</rhyme>;</l>
        <l id="s10:l5" met="4" type="+-">Want hy heeft met goet <rhyme label="c" type="m">verstant</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Sijnen wan al in sijn <rhyme label="c" type="m" corresp="#s10:l5">handt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">Sijnen dorsch-vloer <rhyme label="a" type="f">puere</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Sal hy suyver maken <rhyme label="b" type="m">klaer</rhyme>:</l>
        <l id="s11:l3" met="3" type="+-">Brengen in sijn <rhyme label="a" type="f" corresp="#s11:l1">schuere</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">De Terwe dan <rhyme label="b" type="m" corresp="#s11:l2">alle-gaer</rhyme>:</l>
        <l id="s11:l5" met="4" type="+-">Maer het Kaf verbranden <rhyme label="c" type="m">al</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Met eeuwigen vyer hy <rhyme label="c" type="m" corresp="#s11:l5">sal</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="+-">Prince, dese <rhyme label="a" type="f">leere</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Vast toch in u herten <rhyme label="b" type="m">stelt</rhyme>,</l>
        <l id="s12:l3" met="3" type="+-">Om u te <rhyme label="a" type="f" corresp="#s12:l1">bekeeren</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Eer dat den Boom wert <rhyme label="b" type="m" corresp="#s12:l2">gevelt</rhyme>:</l>
        <l id="s12:l5" met="4" type="+-">So lang als den dag noch <rhyme label="c" type="m">schijnt</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Die by na geheel <rhyme label="c" type="m" corresp="#s12:l5">verdwijnt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
