      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MIjn Heer, ick weet en <rhyme label="a" type="f">belye</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Dat ick heb <rhyme label="b" type="m">versaeckt</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Satan, Satans <rhyme label="a" type="f" corresp="#s1:l1">pomperye</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Al dat Satan <rhyme label="b" type="m" corresp="#s1:l2">raeckt</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Door de Doop my <rhyme label="c" type="f">aengenomen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Hebt ghy voor u <rhyme label="d" type="m">kindt</rhyme>;</l>
        <l id="s1:l7" met="4" type="+-">Om de sonden al te <rhyme label="c" type="f" corresp="#s1:l5">schromen</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Om te zijn uw' <rhyme label="d" type="m" corresp="#s1:l6">vrint</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ghy versocht dat ick sou <rhyme label="a" type="f">minnen</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Uw' mijn Godt en <rhyme label="b" type="m">Al</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Met al mijn kracht, hart en <rhyme label="a" type="f" corresp="#s2:l1">sinnen</rhyme>.</l>
        <l id="s2:l4" met="3" type="+-">Eylaes! 'k was soo <rhyme label="b" type="m" corresp="#s2:l2">mal</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ick gebruyckte al mijn <rhyme label="c" type="f">leden</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Ziel, goet, al mijn <rhyme label="d" type="m">tijdt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Tot ydelheyt en <rhyme label="c" type="f" corresp="#s2:l5">boosheden</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Tot uw' groote <rhyme label="d" type="m" corresp="#s2:l6">spijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Met mijn sonden 'k dorst <rhyme label="a" type="f">versmaden</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">U mijn heer mijn <rhyme label="b" type="m">Godt</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Met mijn vuyle en qua <rhyme label="a" type="f" corresp="#s3:l1">daden</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">'k Achte u voor <rhyme label="b" type="m" corresp="#s3:l2">sot</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Hoe menichmael door mijn <rhyme label="c" type="f">sonden</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Heb ick u mijn <rhyme label="d" type="m">Heer</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Gekruyst, en hernieuwt uw' <rhyme label="c" type="f" corresp="#s3:l5">wonden</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Als de Ioden <rhyme label="d" type="m" corresp="#s3:l6">meer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Door mijn boos quaet sondigh <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Dorst ick Sondaer <rhyme label="b" type="m">dwaes</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Mijn ziel aen den Duyvel <rhyme label="a" type="f" corresp="#s4:l1">geven</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Dat om 't sondigh <rhyme label="b" type="m" corresp="#s4:l2">aes</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Mijn ziel, mijn ziel, was <rhyme label="c" type="f">beseten</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Door den Helschen <rhyme label="d" type="m">gast</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Al wilde ick 't geensins <rhyme label="c" type="f" corresp="#s4:l5">weten</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">'k Weet nu dat gaet <rhyme label="d" type="m" corresp="#s4:l6">vast</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Om mijn quaet, ghy stuerde <rhyme label="a" type="f">plagen</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Dieren tijdt, en <rhyme label="b" type="m">Pest</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Oorlogh, jae, noch alle <rhyme label="a" type="f" corresp="#s5:l1">dagen</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Ghy straft, doodt en <rhyme label="b" type="m" corresp="#s5:l2">quetst</rhyme></l>
        <l id="s5:l5" met="4" type="+-">d' Meeste straf in dese <rhyme label="c" type="f">tijden</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Is een ydel <rhyme label="d" type="m">schijn</rhyme>:</l>
        <l id="s5:l7" met="4" type="+-">Soo ick weet, hem te <rhyme label="c" type="f" corresp="#s5:l5">verblijden</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">By de Helsche <rhyme label="d" type="m" corresp="#s5:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Om de sonden moet men <rhyme label="a" type="f">branden</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Branden sonder <rhyme label="b" type="m">endt</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">En vast sijn voeten en <rhyme label="a" type="f" corresp="#s6:l1">handen</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Eeuwigh 't helsch <rhyme label="b" type="m" corresp="#s6:l2">Serpent</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Te sullen sien; noyt t' <rhyme label="c" type="f">aenschouwen</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Godes klaer <rhyme label="d" type="m">aenschijn</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Brenght aen d'aldermeeste <rhyme label="c" type="f" corresp="#s6:l5">rouwen</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">d' Alderswaerste <rhyme label="d" type="m" corresp="#s6:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">En om 't quaet wort men <rhyme label="a" type="f">gesloten</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Buyten troost en <rhyme label="b" type="m">vreught</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">En van 's Hemels hoop <rhyme label="a" type="f" corresp="#s7:l1">verstoten</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">En 's Hemels <rhyme label="b" type="m" corresp="#s7:l2">geneught</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Als yemant al Godes <rhyme label="c" type="f">schencken</rhyme></l>
        <l id="s7:l6" met="3" type="+-">In d' Hemelsche <rhyme label="d" type="m">staet</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Wil verhalen ofte <rhyme label="c" type="f" corresp="#s7:l5">dencken</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Alleen daer na <rhyme label="d" type="m" corresp="#s7:l6">raet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Menighmael met de <rhyme label="a" type="f">rebellen</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Heb ick Sondaer <rhyme label="b" type="m">snoot</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Verdient al de pijn der <rhyme label="a" type="f" corresp="#s8:l1">Hellen</rhyme>.</l>
        <l id="s8:l4" met="3" type="+-">Maer uw' liefde <rhyme label="b" type="m" corresp="#s8:l2">groot</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Treckt mijn nu Ã´ Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Treckt my heel tot <rhyme label="d" type="m">u</rhyme>;</l>
        <l id="s8:l7" met="4" type="+-">Uw' goetheyt doet mijn <rhyme label="c" type="f" corresp="#s8:l5">bekeeren</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">Soo ick weet als <rhyme label="d" type="m" corresp="#s8:l6">nu</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Dat ghy niemandt sult <rhyme label="a" type="f">verstooten</rhyme></l>
        <l id="s9:l2" met="3" type="+-">Om sijn sonden <rhyme label="b" type="m">veel</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Al was 't quaet in hem <rhyme label="a" type="f" corresp="#s9:l1">besloten</rhyme></l>
        <l id="s9:l4" met="3" type="+-">Van de Werelt <rhyme label="b" type="m" corresp="#s9:l2">heel</rhyme>:</l>
        <l id="s9:l5" met="4" type="+-">Als hy belijdt al sijn <rhyme label="c" type="f">sonden</rhyme></l>
        <l id="s9:l6" met="3" type="+-">Met berouw <rhyme label="d" type="m">oprecht</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Ghy geneest dees sondaers <rhyme label="c" type="f" corresp="#s9:l5">wonden</rhyme>,</l>
        <l id="s9:l8" met="3" type="+-">Hoe 't quaet hem had <rhyme label="d" type="m" corresp="#s9:l6">g'hecht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Ghy schrijft al de sondaers <rhyme label="a" type="f">wercken</rhyme></l>
        <l id="s10:l2" met="3" type="+-">Niet in eenen <rhyme label="b" type="m">steen</rhyme>;</l>
        <l id="s10:l3" met="4" type="+-">Maer al 't quaet van Leeck en <rhyme label="a" type="f" corresp="#s10:l1">Klercken</rhyme></l>
        <l id="s10:l4" met="3" type="+-">In het stof <rhyme label="b" type="m" corresp="#s10:l2">alleen</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Al dat in 't stof is <rhyme label="c" type="f">geschreven</rhyme>,</l>
        <l id="s10:l6" met="3" type="+-">Gemack'lijck en <rhyme label="d" type="m">rat</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Met een voet wordt <rhyme label="c" type="f" corresp="#s10:l5">uyt-gevreven</rhyme>,</l>
        <l id="s10:l8" met="3" type="+-">Of met 't minste <rhyme label="d" type="m" corresp="#s10:l6">nat</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Na uw' woort ick kom <rhyme label="a" type="f">geladen</rhyme></l>
        <l id="s11:l2" met="3" type="+-">Met mijn sondigh <rhyme label="b" type="m">pack</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Toont Jesu, aen mijn <rhyme label="a" type="f" corresp="#s11:l1">genaden</rhyme>;</l>
        <l id="s11:l4" met="3" type="+-">Geeft mijn ziel <rhyme label="b" type="m" corresp="#s11:l2">gemack</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Met u uyt-gespannen <rhyme label="c" type="f">armen</rhyme>,</l>
        <l id="s11:l6" met="3" type="+-">Met u open <rhyme label="d" type="m">borst</rhyme>;</l>
        <l id="s11:l7" met="4" type="+-">O Iesu! wilt my <rhyme label="c" type="f" corresp="#s11:l5">ontfarmen</rhyme>!</l>
        <l id="s11:l8" met="3" type="+-">Laeft mijn ziele <rhyme label="d" type="m" corresp="#s11:l6">dorst</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Door u goetheyt 'k ben <rhyme label="a" type="f">verresen</rhyme></l>
        <l id="s12:l2" met="3" type="+-">Van de sonden <rhyme label="b" type="m">val</rhyme>;</l>
        <l id="s12:l3" met="4" type="+-">En hierom moet zijn <rhyme label="a" type="f" corresp="#s12:l1">gepresen</rhyme></l>
        <l id="s12:l4" met="3" type="+-">Ghy mijn Godt en <rhyme label="b" type="m" corresp="#s12:l2">Al</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Ick wil liever de doodt <rhyme label="c" type="f">sterven</rhyme></l>
        <l id="s12:l6" met="3" type="+-">Als dat ick <rhyme label="d" type="m">voortaen</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">Uw' soete gracy souw <rhyme label="c" type="f" corresp="#s12:l5">derven</rhyme>,</l>
        <l id="s12:l8" met="3" type="+-">Of uw' weer <rhyme label="d" type="m" corresp="#s12:l6">versmaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
