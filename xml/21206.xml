  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Coridon had een Hart in 't <rhyme label="a" type="m">oogh</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat hy vast ijlde <rhyme label="b" type="m">naer</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Hy liep, hy rende, en hy <rhyme label="a" type="m" corresp="#s1:l1">vloogh</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Anghstvalligh hier en <rhyme label="b" type="m" corresp="#s1:l2">daer</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Met snelle spronghen vluchten 't <rhyme label="c" type="m">Hart</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Door Bosch en <rhyme label="d" type="m">Wildernis</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Dus riep hy, ach! wat bangher <rhyme label="c" type="m" corresp="#s1:l5">smart</rhyme>!</l>
        <l id="s1:l8" met="3" type="-+">Waer of 't verholen <rhyme label="d" type="m" corresp="#s1:l6">is</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al rasend' loopt hy door <rhyme label="a" type="m">d'Woestijn</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En siet vast om end' <rhyme label="b" type="m">om</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Ach seydt hy, waer of 't Hart mach <rhyme label="a" type="m" corresp="#s2:l1">zijn</rhyme>?</l>
        <l id="s2:l4" met="3" type="-+">Waer dat ick loop of <rhyme label="b" type="m" corresp="#s2:l2">kom</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ick sie gheen Hart noch eenigh <rhyme label="c" type="m">Dier</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Van aemloosheydt ick <rhyme label="d" type="m">hijgh</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Nochtans rust ick niet, voor ick <rhyme label="c" type="m" corresp="#s2:l5">hier</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Het Hart ghevanghen <rhyme label="d" type="m" corresp="#s2:l6">krijgh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dus hijgend' hy sijn ooghen <rhyme label="a" type="m">sloegh</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Op Bergh, en Dal, en <rhyme label="b" type="m">Bos</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Met vatte doen sijn Oor 't <rhyme label="a" type="m" corresp="#s3:l1">ghezwoegh</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van Roosemondt, die <rhyme label="b" type="m" corresp="#s3:l2">los</rhyme></l>
        <l id="s3:l5" met="4" type="-+">En onbekommert lagh in 't <rhyme label="c" type="m">Gras</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die hy haest heeft <rhyme label="d" type="m">ghesien</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Ey, riep hy: hier kom ick van <rhyme label="c" type="m" corresp="#s3:l5">pas</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Laet 't Hart nu vrylijck <rhyme label="d" type="m" corresp="#s3:l6">vli'en</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick heb het Hart al dat ick <rhyme label="a" type="m">socht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Mij soete <rhyme label="b" type="m">Roosemondt</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Ach! dat ick dorst, of dat ick <rhyme label="a" type="m" corresp="#s4:l1">mocht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">'k Omhelsde u <rhyme label="b" type="m" corresp="#s4:l2">terstondt</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Met vloogh hy Roosemondt om 't <rhyme label="c" type="m">Lijf</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die met haer Boesem <rhyme label="d" type="m">bloot</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Lagh, ende druckten haer soo <rhyme label="c" type="m" corresp="#s4:l5">stijf</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dat's uyt haer slaep <rhyme label="d" type="m" corresp="#s4:l6">op-schoot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sy sloegh haer ooghen op, en <rhyme label="a" type="m">sagh</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hoe dta haer <rhyme label="b" type="m">Coridon</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Daer nevens aen haer zijde <rhyme label="a" type="m" corresp="#s5:l1">lagh</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ach! seyd' sy: <rhyme label="b" type="m" corresp="#s5:l2">Morghen-Son</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Hoe komt ghy hier dus aen mijn <rhyme label="c" type="m">zy</rhyme>?</l>
        <l id="s5:l6" met="3" type="-+">Mijn eenighst <rhyme label="d" type="m">Toeverlaet</rhyme>!</l>
        <l id="s5:l7" met="4" type="-+">Ey kom, ey kom, en omhels <rhyme label="c" type="m" corresp="#s5:l5">my</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Eer my het vuyr <rhyme label="d" type="m" corresp="#s5:l6">verbraedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
