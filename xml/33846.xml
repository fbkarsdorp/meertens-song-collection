    <melody>Ik ging nog hedenmorgen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VAn Jesus heeft <rhyme label="a" type="f">vernoomen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Een Man, heel vol <rhyme label="b" type="m">Melaets</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En is tot hem <rhyme label="a" type="f" corresp="#s1:l1">gekoomen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Op een bequame <rhyme label="b" type="m" corresp="#s1:l2">plaets</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Met groot <rhyme label="c" type="f">eerwaerden</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Viel hy ter <rhyme label="d" type="m">neer</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Met 't aensicht op der <rhyme label="c" type="f" corresp="#s1:l5">Aerden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Hy badt, en seydt, o <rhyme label="d" type="m" corresp="#s1:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Is 't dat gy hebt de <rhyme label="a" type="f">wille</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gy mijn geneesen <rhyme label="b" type="m">kondt</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">En Jesus staende <rhyme label="a" type="f" corresp="#s2:l1">stille</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ontfermde hem <rhyme label="b" type="m" corresp="#s2:l2">terstondt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Heeft <rhyme label="c" type="f">uytgestooken</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Sijn handt wat <rhyme label="d" type="m">naer</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Hem rakend', heeft <rhyme label="c" type="f" corresp="#s2:l5">gesprooken</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Het is mijn wil, wordt <rhyme label="d" type="m" corresp="#s2:l6">klaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Soo rasch als hy dat <rhyme label="a" type="f">seyde</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Al de <rhyme label="b" type="m">Melaetsigheydt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van den Melaetsen <rhyme label="a" type="f" corresp="#s3:l1">scheyde</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Hy kreegh sijn <rhyme label="b" type="m" corresp="#s3:l2">suyverheydt</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Hy hem <rhyme label="c" type="f">bevoole</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Met <rhyme label="d" type="m">dreygement</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Dit blijven moet <rhyme label="c" type="f" corresp="#s3:l5">verhoole</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En maekt het niet <rhyme label="d" type="m" corresp="#s3:l6">bekent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En seydt, om u te <rhyme label="a" type="f">toone</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Gaet na de Priesters <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En als men is <rhyme label="a" type="f" corresp="#s4:l1">gewoone</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Uw offerhande <rhyme label="b" type="m" corresp="#s4:l2">doe</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Maer <rhyme label="c" type="f">evenwelle</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Als hy gingh <rhyme label="d" type="m">heen</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Gingh 't alle-man <rhyme label="c" type="f" corresp="#s4:l5">vertelle</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En maekten 't heel <rhyme label="d" type="m" corresp="#s4:l6">gemeen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo dat men groote <rhyme label="a" type="f">hoopen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">De lieden quamen <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Met haestigheeden <rhyme label="a" type="f" corresp="#s5:l1">loopen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gesontheyt te <rhyme label="b" type="m" corresp="#s5:l2">ontfaen</rhyme>;</l>
        <l id="s5:l5" met="2" type="-+">Maer openbaer <rhyme label="c" type="f">en</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Wouw' hy niet <rhyme label="d" type="m">sijn</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Daerom trok hy van daer, <rhyme label="c" type="f" corresp="#s5:l5">en</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Gingh bidden in <rhyme label="d" type="m" corresp="#s5:l6">d'Woestijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O Heer, komt ons te <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Verhoort togh ons <rhyme label="b" type="m">gebedt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wy sijn als de <rhyme label="a" type="f" corresp="#s6:l1">Melaten</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met sonden seer <rhyme label="b" type="m" corresp="#s6:l2">besmet</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Reykt uw <rhyme label="c" type="f">genade</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Tot ons eens <rhyme label="d" type="m">uyt</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Op dat wy uw <rhyme label="c" type="f" corresp="#s6:l5">weldade</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Verkonden <rhyme label="d" type="m" corresp="#s6:l6">overluyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
