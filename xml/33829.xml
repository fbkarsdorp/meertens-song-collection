  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">G' Hebt d'Ouden hooren <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Van overspel <rhyme label="b" type="m">onthout</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Maer wie om te <rhyme label="a" type="f" corresp="#s1:l1">begeeren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Een ander vrouw <rhyme label="b" type="m" corresp="#s1:l2">aenschouwt</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Doet sondt in 't hart <rhyme label="a" type="f">alreede</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Of hy 't al hadt <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Gelijk of hy 't al <rhyme label="a" type="f" corresp="#s2:l1">deede</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Of hy 't al hadt <rhyme label="b" type="m" corresp="#s2:l2">begaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Is 't dat uw reghter <rhyme label="a" type="f">ooge</rhyme></l>
        <l id="s3:l2" met="3" type="-+">U al <rhyme label="b" type="m">schandalizeert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Terwijl hy niet wil <rhyme label="a" type="f" corresp="#s3:l1">dooge</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Rukt uyt, en van u <rhyme label="b" type="m" corresp="#s3:l2">weert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'t Is best een lit te <rhyme label="a" type="f">misse</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dan 't heele lichaem <rhyme label="b" type="m">sel</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Geworpen worden <rhyme label="a" type="f" corresp="#s4:l1">wisse</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In d'afgront van de <rhyme label="b" type="m" corresp="#s4:l2">Hel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Is 't dat uw' <rhyme label="a" type="f">rechter-hande</rhyme></l>
        <l id="s5:l2" met="3" type="-+">U meede <rhyme label="b" type="m">schand'lizeert</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Al is 't een waerde <rhyme label="a" type="f" corresp="#s5:l1">pande</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Snijdt af, en van u <rhyme label="b" type="m" corresp="#s5:l2">weert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">'t Is best een lit te <rhyme label="a" type="f">misse</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dan 't heele lichaem <rhyme label="b" type="m">sel</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Geworpen worden <rhyme label="a" type="f" corresp="#s6:l1">wisse</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In d'afgront van de <rhyme label="b" type="m" corresp="#s6:l2">Hel</rhyme>.</l>
      </lg>
    </lg>
  </text>
