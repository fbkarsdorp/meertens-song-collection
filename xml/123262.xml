  <author>J.F. Willems</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1">Vele suchten,</l>
        <l id="s1:l2">Sere duchten,</l>
        <l id="s1:l3">Ongheval,</l>
        <l id="s1:l4">Luttel spreken,</l>
        <l id="s1:l5">Dit sijn treken</l>
        <l id="s1:l6">Van minnen al.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1">En es dier</l>
        <l id="s2:l2">Soe onghehier,</l>
        <l id="s2:l3">No quader venijn,</l>
        <l id="s2:l4">Dan wroeghers tonghen</l>
        <l id="s2:l5">Onbedwonghen,</l>
        <l id="s2:l6">Daer minners sijn.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1">Dat vrouwen seghet</l>
        <l id="s3:l2">Daer ane leghet</l>
        <l id="s3:l3">Luttel cracht,</l>
        <l id="s3:l4">Dat si segghen heden</l>
        <l id="s3:l5">Es somwile leden</l>
        <l id="s3:l6">Eer middernacht.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1">Mi soe en twifelt niet,</l>
        <l id="s4:l2">Si en moeten verdriet</l>
        <l id="s4:l3">Dicke doghen,</l>
        <l id="s4:l4">Die minnen</l>
        <l id="s4:l5">Dat si ghewinnen</l>
        <l id="s4:l6">Niet en moghen.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1">Mi es ontoghen</l>
        <l id="s5:l2">Ende ontvloghen</l>
        <l id="s5:l3">Dat herte mijn.</l>
        <l id="s5:l4">En sijt niet erre,</l>
        <l id="s5:l5">En es niet verre,</l>
        <l id="s5:l6">Lief minnekijn.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1">Van minnen te quelene,</l>
        <l id="s6:l2">Ende dat te helene</l>
        <l id="s6:l3">Die men mint,</l>
        <l id="s6:l4">Dats ene pine</l>
        <l id="s6:l5">Daer alle medesine</l>
        <l id="s6:l6">Af verblint.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1">En es gheen wonder</l>
        <l id="s7:l2">Al comt hi tonder</l>
        <l id="s7:l3">Ende wert vertert,</l>
        <l id="s7:l4">Die sere mint</l>
        <l id="s7:l5">Ende niet ghewint</l>
        <l id="s7:l6">Dat hi beghert.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1">Der minnen leven</l>
        <l id="s8:l2">En was noit ghegheven</l>
        <l id="s8:l3">Bi scoenheden,</l>
        <l id="s8:l4">Maer bi ghelucke</l>
        <l id="s8:l5">Gheeft si haer stucken,</l>
        <l id="s8:l6">Ende doet noch heden.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1">Scone wijfs te pliene,</l>
        <l id="s9:l2">Ende die tanesiene</l>
        <l id="s9:l3">Te nauwe ende tsere,</l>
        <l id="s9:l4">Dat es een lost,</l>
        <l id="s9:l5">Die dicke cost</l>
        <l id="s9:l6">Den man sijn eere.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1">Meneghe vrouwe</l>
        <l id="s10:l2">Drijft groten rouwe</l>
        <l id="s10:l3">Alsi doet quaet,</l>
        <l id="s10:l4">Dat si te doene</l>
        <l id="s10:l5">Daerna wert coene,</l>
        <l id="s10:l6">Mids quaden raet.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1">Dicwile vindt</l>
        <l id="s11:l2">Die loeslec mint</l>
        <l id="s11:l3">Weth ende raet,</l>
        <l id="s11:l4">Daer hi mede</l>
        <l id="s11:l5">Behout den vrede:</l>
        <l id="s11:l6">Dat es hem quaet.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1">Meneghe heeft lijf</l>
        <l id="s12:l2">Ende ziele om wijf</l>
        <l id="s12:l3">Ghewaghet beide,</l>
        <l id="s12:l4">Dat hi te voren</l>
        <l id="s12:l5">Nochtan verloren</l>
        <l id="s12:l6">Hem selven seide.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1">Die raet die vint:</l>
        <l id="s13:l2">Ene vrouw die mint</l>
        <l id="s13:l3">In corten stonden,</l>
        <l id="s13:l4">Eer si verliest</l>
        <l id="s13:l5">Dat si verkiest,</l>
        <l id="s13:l6">Daers na gheen gronden.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1">En es wijsheit</l>
        <l id="s14:l2">Boven tscalcheit</l>
        <l id="s14:l3">Eens wijfs die mint;</l>
        <l id="s14:l4">Noch gheen man,</l>
        <l id="s14:l5">Hoe vele hi can,</l>
        <l id="s14:l6">Sine machten blint.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1">Die lief ende leet</l>
        <l id="s15:l2">Van minne weet</l>
        <l id="s15:l3">Ende hevet ontfaÃªn,</l>
        <l id="s15:l4">Die mach kinnen</l>
        <l id="s15:l5">Die cracht van minnen</l>
        <l id="s15:l6">Ende leren gaen.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1">En bleef noit herte</l>
        <l id="s16:l2">Langhe in smerte</l>
        <l id="s16:l3">Die trouwe minde,</l>
        <l id="s16:l4">Sine bleef vertroest</l>
        <l id="s16:l5">Ende oec verloest</l>
        <l id="s16:l6">Van gode int inde.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1">Een vrouwe die hulpen</l>
        <l id="s17:l2">Wilt ende stulpen</l>
        <l id="s17:l3">Eens mans rouwe,</l>
        <l id="s17:l4">Die en sal niet scheden</l>
        <l id="s17:l5">Hi en es te vreden</l>
        <l id="s17:l6">Van hem: dats trouwe.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1">Ghelijc dat trect</l>
        <l id="s18:l2">Nature die wect,</l>
        <l id="s18:l3">Ende minne die bint,</l>
        <l id="s18:l4">Daer saen die herte</l>
        <l id="s18:l5">Met comt in smerte</l>
        <l id="s18:l6">Als hi dit kint.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1">Dicke es coene</l>
        <l id="s19:l2">Die dinc te doene;</l>
        <l id="s19:l3">Die ghene die mint</l>
        <l id="s19:l4">Die hi spade</l>
        <l id="s19:l5">Sprake ocht dade,</l>
        <l id="s19:l6">En mindi twint.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1">Die anxt der doet</l>
        <l id="s20:l2">Die es soe groet,</l>
        <l id="s20:l3">Datti verwint</l>
        <l id="s20:l4">Al ongheval</l>
        <l id="s20:l5">Ende minne ende al,</l>
        <l id="s20:l6">Als hi beghint.</l>
      </lg>
    </lg>
  </text>
</song>
