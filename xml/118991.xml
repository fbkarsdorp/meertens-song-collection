  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ZAl ik leven of steeds <rhyme label="a" type="f">sterven</rhyme>?</l>
        <l id="s1:l2" met="4" type="+-">Hoop ik nog of hoop ik <rhyme label="b" type="m">niet</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Sterven moet myn Trouw <rhyme label="a" type="f" corresp="#s1:l1">verwerven</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Wyl my 's ankers hoop <rhyme label="b" type="m" corresp="#s1:l2">ontvliet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ach! hoe kan een Zeeman <rhyme label="a" type="f">hoopen</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Als de wind des ong'luks <rhyme label="b" type="m">blaast</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Want daar is geen rust meer <rhyme label="a" type="f" corresp="#s2:l1">oopen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Daar de Trouw zig driftig <rhyme label="b" type="m" corresp="#s2:l2">haast</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Is een leven zonder <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">En een sta√¢ge stervens <rhyme label="b" type="m">pyn</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Herten, die te zamen <rhyme label="a" type="f" corresp="#s3:l1">kleven</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Moet heur scheiding dood'lyk <rhyme label="b" type="m" corresp="#s3:l2">zyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Nu ik zal uw dog <rhyme label="a" type="f">gedenken</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als ik haast niet denken <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'t Aan uw denken, zal my <rhyme label="a" type="f" corresp="#s4:l1">krenken</rhyme></l>
        <l id="s4:l4" met="4" type="+-">En verstrekken tot <rhyme label="b" type="m" corresp="#s4:l2">Tiran</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Liever krank zyn en uw <rhyme label="a" type="f">minnen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Als gezond zyn, zonder <rhyme label="b" type="m">uw</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Want gy zweeft steeds in myn <rhyme label="a" type="f" corresp="#s5:l1">zinnen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">En gy kweld en laaft my <rhyme label="b" type="m" corresp="#s5:l2">nu</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Nu adieu myn ander <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Schoon ik blyv' in myne <rhyme label="b" type="m">pyn</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Zal ik uw dog niet <rhyme label="a" type="f" corresp="#s6:l1">begeven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Want gy zult myn eigen <rhyme label="b" type="m" corresp="#s6:l2">zyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'k Wil u dienaar eeuwig <rhyme label="a" type="f">blyven</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Beide in vreugd' en <rhyme label="b" type="m">tegenspoed</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Niets zal my van u <rhyme label="a" type="f" corresp="#s7:l1">verdryven</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Wyl my liefden laaft en <rhyme label="b" type="m" corresp="#s7:l2">voed</rhyme>.</l>
      </lg>
    </lg>
  </text>
