  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SElden siet men t' samen <rhyme label="a" type="f">paren</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Heyligheyt ende de jonghe <rhyme label="a" type="f" corresp="#s1:l1">jaren</rhyme>.</l>
        <l id="s1:l3" met="2" type="-+">De re'en hier <rhyme label="b" type="m">van</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Yder een licht bevroeden <rhyme label="b" type="m" corresp="#s1:l3">kan</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">'t Schoon in 't oogh doet haar <rhyme label="c" type="f">verleyden</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Ende de tijden die haar <rhyme label="c" type="f" corresp="#s1:l5">verbeyden</rhyme>;</l>
        <l id="s1:l7" met="2" type="-+">Quae <rhyme label="d" type="m">phantasy</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Dat 'sHeeren wegh vol doornen <rhyme label="d" type="m" corresp="#s1:l7">sy</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">'t Gheselschap dolen <rhyme label="e" type="m">doet</rhyme>.</l>
        <l id="s1:l10" met="3" type="-+">En echter waar het <rhyme label="e" type="m" corresp="#s1:l9">goet</rhyme>,</l>
        <l id="s1:l11" met="2" type="+-">Jae noodigh, <rhyme label="f" type="m">dat</rhyme></l>
        <l id="s1:l12" met="2" type="-+">Sy op het <rhyme label="f" type="m" corresp="#s1:l11">pat</rhyme></l>
        <l id="s1:l13" met="4" type="-+">Des deughts behielden van joncks haar <rhyme label="e" type="m" corresp="#s1:l9">voet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ter bequamer tijdt <rhyme label="a" type="f">besteden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Tot het wel leven sijn frissche <rhyme label="a" type="f" corresp="#s2:l1">leden</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Kan hem noyt <rhyme label="b" type="m">scha'an</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die nae Gods heyl door deught wil <rhyme label="b" type="m" corresp="#s2:l3">gaan</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Teere rijsjens jongh <rhyme label="c" type="f">gheboghen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Sietmen alleynsjens den top <rhyme label="c" type="f" corresp="#s2:l5">be-ooghen</rhyme>.</l>
        <l id="s2:l7" met="2" type="-+">'t Nieuw aarden <rhyme label="d" type="m">vat</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Houdt langh den reuck van 't eerste <rhyme label="d" type="m" corresp="#s2:l7">nat</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">Deught staagh van jonghs <rhyme label="e" type="m">ghedaan</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Een tweeden aart neemt <rhyme label="e" type="m" corresp="#s2:l9">aan</rhyme>;</l>
        <l id="s2:l11" met="2" type="+-">Die sterckt ons <rhyme label="f" type="m">tret</rhyme></l>
        <l id="s2:l12" met="2" type="-+">In 's Heeren <rhyme label="f" type="m" corresp="#s2:l11">wet</rhyme>;</l>
        <l id="s2:l13" met="4" type="-+">En maackt dat wy in het goet <rhyme label="e" type="m" corresp="#s2:l9">volstaan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Kancker-zaat in 'tBloet <rhyme label="a" type="f">gheloopen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Moet met sterven ghewis <rhyme label="a" type="f" corresp="#s3:l1">bekoopen</rhyme>;</l>
        <l id="s3:l3" met="2" type="-+">Dan helpt gheen <rhyme label="b" type="m">kruyt</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Snijt het terstont met 't vliesien <rhyme label="b" type="m" corresp="#s3:l3">uyt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Als de sonde komt te <rhyme label="c" type="f">ouden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Isse beswaarlijck in toom te <rhyme label="c" type="f" corresp="#s3:l5">houden</rhyme>;</l>
        <l id="s3:l7" met="2" type="-+">Sy wert soo <rhyme label="d" type="m">sterck</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Dat die te do'on sy lastigh <rhyme label="d" type="m" corresp="#s3:l7">werck</rhyme>.</l>
        <l id="s3:l9" met="3" type="-+">Men doet licht <rhyme label="e" type="m">wederstant</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Een Vyant buyten 't <rhyme label="e" type="m" corresp="#s3:l9">Landt</rhyme>:</l>
        <l id="s3:l11" met="2" type="+-">Doch sterck <rhyme label="f" type="m">bewalt</rhyme></l>
        <l id="s3:l12" met="2" type="-+">Men hem <rhyme label="f" type="m" corresp="#s3:l11">aanvalt</rhyme></l>
        <l id="s3:l13" met="4" type="-+">In 't lant, met kommer en stercker <rhyme label="e" type="m" corresp="#s3:l9">hant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Yder mensche moet <rhyme label="a" type="f">bekennen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dat het veel lastigher valt 't <rhyme label="a" type="f" corresp="#s4:l1">afwennen</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Ghewoon', <rhyme label="b" type="m">ondeught</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Dan goet ghewennen voor de <rhyme label="b" type="m" corresp="#s4:l3">jeucht</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Lichter salmen daar toe <rhyme label="c" type="f">raacken</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Datmen sal Heydenen Heyligh <rhyme label="c" type="f" corresp="#s4:l5">maacken</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Dan Godsdienst <rhyme label="d" type="m">quaat</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Te brenghen in een beter <rhyme label="d" type="m" corresp="#s4:l7">staat</rhyme>.</l>
        <l id="s4:l9" met="3" type="-+">Want eerst dient <rhyme label="e" type="m">af-gheleert</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Het gheenmen wist <rhyme label="e" type="m" corresp="#s4:l9">verkeert</rhyme>;</l>
        <l id="s4:l11" met="2" type="+-">Eer datmen <rhyme label="f" type="m">plant</rhyme></l>
        <l id="s4:l12" met="2" type="-+">In het <rhyme label="f" type="m" corresp="#s4:l11">verstant</rhyme></l>
        <l id="s4:l13" met="4" type="-+">De wijs', hoe d' Heere wil sijn <rhyme label="e" type="m" corresp="#s4:l9">ghe-eert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wilt ghy oud u Godt <rhyme label="a" type="f">behaghen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Wilt dan van jonghs aff de deught na <rhyme label="a" type="f" corresp="#s5:l1">jaghen</rhyme>.</l>
        <l id="s5:l3" met="2" type="-+">Dat kent ghy <rhyme label="b" type="m">oudt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">'t Gheen ghy van jonghs de'ed <rhyme label="b" type="m" corresp="#s5:l3">menighfout</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Dient Godt nu 't u best magh <rhyme label="c" type="f">lusten</rhyme>:</l>
        <l id="s5:l6" met="4" type="+-">Veylighlijck maghmen na 't wercken <rhyme label="c" type="f" corresp="#s5:l5">rusten</rhyme>.</l>
        <l id="s5:l7" met="2" type="-+">De Keers best <rhyme label="d" type="m">licht</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Diemen doet gaan voor ons <rhyme label="d" type="m" corresp="#s5:l7">ghesicht</rhyme>.</l>
        <l id="s5:l9" met="3" type="-+">Onseecker is den <rhyme label="e" type="m">tijdt</rhyme>:</l>
        <l id="s5:l10" met="3" type="-+">Ghy morghen licht niet <rhyme label="e" type="m" corresp="#s5:l9">zijt</rhyme>.</l>
        <l id="s5:l11" met="2" type="+-">Gods <rhyme label="f" type="m">saligheydt</rhyme></l>
        <l id="s5:l12" met="2" type="-+">Is die <rhyme label="f" type="m" corresp="#s5:l11">bereyt</rhyme>,</l>
        <l id="s5:l13" met="4" type="-+">Die stadigh strijden den goeden <rhyme label="e" type="m" corresp="#s5:l9">strijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Op de Winden en de <rhyme label="a" type="f">Stroomen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Passen de Schippers om 't huys te <rhyme label="a" type="f" corresp="#s6:l1">komen</rhyme>.</l>
        <l id="s6:l3" met="2" type="-+">Den Bouman <rhyme label="b" type="m">let</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Wanner het Boomtjen dient <rhyme label="b" type="m" corresp="#s6:l3">gheset</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Past ghy beter op u <rhyme label="c" type="f">daghen</rhyme>?</l>
        <l id="s6:l6" met="4" type="+-">Lichtelijck sal het hem die <rhyme label="c" type="f" corresp="#s6:l5">beklaghen</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Die sijn hoop <rhyme label="d" type="m">vest</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Om te bekeeren, op het <rhyme label="d" type="m" corresp="#s6:l7">lest</rhyme>.</l>
        <l id="s6:l9" met="3" type="-+">Het gheldt u ziel en <rhyme label="e" type="m">heyl</rhyme>.</l>
        <l id="s6:l10" met="3" type="-+">Sijt daar niet licht me'e <rhyme label="e" type="m" corresp="#s6:l9">veyl</rhyme>:</l>
        <l id="s6:l11" met="2" type="+-">Achts' oock niet <rhyme label="f" type="m">kleyn</rhyme>.</l>
        <l id="s6:l12" met="2" type="-+">Bewaart u <rhyme label="f" type="m" corresp="#s6:l11">reyn</rhyme>,</l>
        <l id="s6:l13" met="4" type="-+">En volght gheduurigh der deughden <rhyme label="e" type="m" corresp="#s6:l9">peyl</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
