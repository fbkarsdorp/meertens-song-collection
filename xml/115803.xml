  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DIe hier op het deugden <rhyme label="a" type="m">pad</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Gaan wil naa des Heemels <rhyme label="a" type="m" corresp="#s1:l1">Stad</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Moet ter deegen // <rhyme label="b" type="f">Over-weegen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat hy veel schimps moet <rhyme label="c" type="m">ontfa'en</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En door druk ten Heemel <rhyme label="c" type="m" corresp="#s1:l4">gaan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'s Heemels weg is nau en <rhyme label="a" type="m">net</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En ter zijden ook <rhyme label="a" type="m" corresp="#s2:l1">bezet</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Met veel smadders // Booze <rhyme label="b" type="f">adders</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die de vroomen steeken <rhyme label="c" type="m">steeds</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Met haar' tongen doen veel <rhyme label="c" type="m" corresp="#s2:l4">leeds</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zoo lang als de mensch zig <rhyme label="a" type="m">stil</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Met de Weereld voegen <rhyme label="a" type="m" corresp="#s3:l1">wil</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Haar gelikken // En zig <rhyme label="b" type="f">schikken</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Tot bedrijf van alle <rhyme label="c" type="m">quaad</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Word hy van haar niet <rhyme label="c" type="m" corresp="#s3:l4">gehaat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maar zoo haast men zig <rhyme label="a" type="m">af-scheid</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En de aardze <rhyme label="a" type="m" corresp="#s4:l1">ydelheid</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Niet wil pleegen // Maar zig <rhyme label="b" type="f">teegen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Haare boosheid zet, en <rhyme label="c" type="m">kant</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Is men tot een schimp in 't <rhyme label="c" type="m" corresp="#s4:l4">Land</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">En ook ijder een die <rhyme label="a" type="m">zal</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Teegens hem zijn bitt're <rhyme label="a" type="m" corresp="#s5:l1">gal</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Steed's uit braaken // En hem <rhyme label="b" type="f">maaken</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Tot een doele-wit van <rhyme label="c" type="m">spot</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Dat is hier der vroomen <rhyme label="c" type="m" corresp="#s5:l4">lot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Heel vloeden zal den <rhyme label="a" type="m">draak</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Teegens haar, niet groot <rhyme label="a" type="m" corresp="#s6:l1">vermaak</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dan uit-spouwen // En <rhyme label="b" type="f">benouwen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Met veel zmaads aan alle <rhyme label="c" type="m">kant</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Dit 's de weg naa 't <rhyme label="c" type="m" corresp="#s6:l4">vaader-land</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maar ik stoot my daar niet <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Iesus is my <rhyme label="a" type="m" corresp="#s7:l1">voor-gegaan</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">'k Zal hem volgen // <rhyme label="b" type="f">onverbolgen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">In versmaadheid en <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">'t Agt des Weerelds smaadheid <rhyme label="c" type="m" corresp="#s7:l4">niet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Als ik maar voor Iesus <rhyme label="a" type="m">lij</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">'t Zy wat smaadheid dat het <rhyme label="a" type="m" corresp="#s8:l1">zy</rhyme></l>
        <l id="s8:l3" met="4" type="+-">'k Ben bewoogen // Te <rhyme label="b" type="f">gedoogen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">'t Zy dan goed of quaad <rhyme label="c" type="m">gerugt</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Ik ben daar voor niet <rhyme label="c" type="m" corresp="#s8:l4">bedugt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Maar ik houd' het voor een <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Dat ik hier voor mijnen <rhyme label="a" type="m" corresp="#s9:l1">Heer</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Alle quaadheid // Vuile <rhyme label="b" type="f">smaadheid</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Lijden mag, ik agt dien <rhyme label="c" type="m">hoon</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Als een paarel aan mijn <rhyme label="c" type="m" corresp="#s9:l4">kroon</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">En het baard in my veel <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Zoo wanneer my om de <rhyme label="a" type="m" corresp="#s10:l1">deugd</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Die zerpenten // <rhyme label="b" type="f">Instrumenten</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Van de Sathan toornig <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">En uit-spuuwen haar <rhyme label="c" type="m" corresp="#s10:l4">fenijn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Want dat my de Weereld <rhyme label="a" type="m">haat</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">En my om het wel-doen <rhyme label="a" type="m" corresp="#s11:l1">smaad</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Hier uit weet ik // En af-meet <rhyme label="b" type="f">ik</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Dat de Geest der <rhyme label="c" type="m">heerlijkheid</rhyme></l>
        <l id="s11:l5" met="4" type="+-">Op my rust in <rhyme label="c" type="m" corresp="#s11:l4">eeuwigheid</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Zaalig is die mensch, <rhyme label="a" type="m">voor-waar</rhyme>!</l>
        <l id="s12:l2" met="4" type="+-">Die veel smaadheid voor en <rhyme label="a" type="m" corresp="#s12:l1">naar</rhyme></l>
        <l id="s12:l3" met="4" type="+-">Komt te lijden // Met <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Een uit-vaagzel is <rhyme label="c" type="m">geagt</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Als men maar de deugd <rhyme label="c" type="m" corresp="#s12:l4">betragt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Al die smaadheid, die men <rhyme label="a" type="m">lijd</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Is maar voor een korten <rhyme label="a" type="m" corresp="#s13:l1">tijd</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">'t Is een blikje // Maar een <rhyme label="b" type="f">snikje</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">By die eeuw'ge <rhyme label="c" type="m">heerlijkheid</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Die ons God heeft <rhyme label="c" type="m" corresp="#s13:l4">toe-bereid</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
