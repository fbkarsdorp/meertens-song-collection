    <melody>Droefheid moet ons hart niet raken</melody>
    <categories>
      <category translation="children">kinderen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAarom houdge uw gloeyend <rhyme label="a" type="f">bekje</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Lieflyk Hontje, malse <rhyme label="a" type="f" corresp="#s1:l1">gekje</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">My zo dartelende <rhyme label="b" type="m">voor</rhyme>?</l>
        <l id="s1:l4" met="4" type="+-">Waarom luikt ge uw geile <rhyme label="c" type="f">lichtjes</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Hallef toe; en schiet de <rhyme label="c" type="f" corresp="#s1:l4">schichtjes</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Door de tedere haartjes <rhyme label="b" type="m" corresp="#s1:l3">door</rhyme>;</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'k Wilje' 'k wilje toch niet <rhyme label="a" type="f">kussen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Wreeder dan de wreede <rhyme label="a" type="f" corresp="#s2:l1">Russen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Harder dan Migdonisch <rhyme label="b" type="m">steen</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Die al lachende myn <rhyme label="c" type="f">klagten</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">In den wint sloeg; en <rhyme label="c" type="f" corresp="#s2:l4">veragten</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Kom myn zuchtjes en <rhyme label="b" type="m" corresp="#s2:l3">gebeen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die my moord met flaautjes <rhyme label="a" type="f">weig'ren</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Als ik voel myn lusjes <rhyme label="a" type="f" corresp="#s3:l1">steig'ren</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Die myn opgekrabde <rhyme label="b" type="m">wond</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Door uw stuursheid als <rhyme label="c" type="f">gealsemt</rhyme></l>
        <l id="s3:l5" met="4" type="+-">En gealoueÃ«t, weer <rhyme label="c" type="f" corresp="#s3:l4">balsemt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Met den Nectar van uw <rhyme label="b" type="m" corresp="#s3:l3">mond</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Weg, gy stoute, ik wil je <rhyme label="a" type="f">haten</rhyme>!</l>
        <l id="s4:l2" met="4" type="+-">'k Neem 't nu voor en 't kussen <rhyme label="a" type="f" corresp="#s4:l1">laten</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Weg, gy harde, ik ben u <rhyme label="b" type="m">moe</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Kus een ander, die zyn <rhyme label="c" type="f">lusjes</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Voeden wil met uwe <rhyme label="c" type="f" corresp="#s4:l4">kusjes</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Hou dien vry uw bekje <rhyme label="b" type="m" corresp="#s4:l3">toe</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Vlucht niet, Lief, ik wil u <rhyme label="a" type="f">kussen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Molliger dan geile <rhyme label="a" type="f" corresp="#s5:l1">Mussen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Zagter dan het <rhyme label="b" type="m">Zwanendons</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Geefze my en niet een <rhyme label="c" type="f">ander</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Vlucht niet Engel ik <rhyme label="c" type="f" corresp="#s5:l4">verander</rhyme>.</l>
        <l id="s5:l6" met="4" type="+-">ach! die kusjes hooren <rhyme label="b" type="m" corresp="#s5:l3">ons</rhyme>.</l>
      </lg>
    </lg>
  </text>
