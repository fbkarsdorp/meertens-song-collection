  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">DE Godt- <rhyme label="a" type="m">saligheydt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Of 't wel leven, kan <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Rijckdommen, <rhyme label="c" type="f">al-om-men</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">En in <rhyme label="a" type="m" corresp="#s1:l1">eeuwigheyt</rhyme>.</l>
        <l id="s1:l5" met="2" type="+-">Uyt alle <rhyme label="d" type="f">dingen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Die den mensch <rhyme label="e" type="f">behaghen</rhyme>,</l>
        <l id="s1:l7" met="2" type="+-">Sy geen <rhyme label="d" type="f" corresp="#s1:l5">geringen</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Voordeel kan <rhyme label="e" type="f" corresp="#s1:l6">weg-draghen</rhyme>.</l>
        <l id="s1:l9" met="3" type="+-">Die nae eere <rhyme label="e" type="f" corresp="#s1:l6">jaghen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Die gheeft sy vaste <rhyme label="f" type="m">eer</rhyme>;</l>
        <l id="s1:l11" met="3" type="-+">Eer, die duuren, Eeuws <rhyme label="g" type="f">uuren</rhyme></l>
        <l id="s1:l12" met="2" type="-+">Na wenschen, by <rhyme label="h" type="f">menschen</rhyme></l>
        <l id="s1:l13" met="3" type="+-">Sal, oock by ons <rhyme label="f" type="m" corresp="#s1:l10">Heer</rhyme>.</l>
        <l id="s1:l14" met="3" type="-+">Onbedwongen, qua <rhyme label="i" type="f">Tonghen</rhyme></l>
        <l id="s1:l15" met="2" type="-+">Verdoven, <rhyme label="j" type="f">ontrooven</rhyme></l>
        <l id="s1:l16" met="3" type="+-">Die ons <rhyme label="f" type="m" corresp="#s1:l10">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">'t Leven gheeft sy <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En al 't gheenen, met <rhyme label="b" type="f">eenen</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Verwecken, en <rhyme label="c" type="f">stercken</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Kan tot ons <rhyme label="a" type="m" corresp="#s2:l1">playsier</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">En frissche <rhyme label="d" type="f">leden</rhyme>.</l>
        <l id="s2:l6" met="3" type="+-">Sy gheeft kloeke <rhyme label="e" type="f">sinnen</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">Kraghtighe <rhyme label="d" type="f" corresp="#s2:l5">reden</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Om al die te <rhyme label="e" type="f" corresp="#s2:l6">winnen</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Die het quaat <rhyme label="e" type="f" corresp="#s2:l6">beginnen</rhyme>.</l>
        <l id="s2:l10" met="3" type="-+">Sy ons goe troost <rhyme label="f" type="m">verleent</rhyme>,</l>
        <l id="s2:l11" met="3" type="-+">Als ons herte vol <rhyme label="g" type="f">smerte</rhyme>,</l>
        <l id="s2:l12" met="2" type="-+">En plaghen, by <rhyme label="h" type="f">vlaghen</rhyme>,</l>
        <l id="s2:l13" met="3" type="+-">Heel jammerlijck <rhyme label="f" type="m" corresp="#s2:l10">weent</rhyme>.</l>
        <l id="s2:l14" met="3" type="-+">Het gheweten <rhyme label="i" type="f">vergheten</rhyme></l>
        <l id="s2:l15" met="2" type="-+">Sy d'onlust doet, en <rhyme label="j" type="f">rust</rhyme></l>
        <l id="s2:l16" met="3" type="+-">Gheeft, meer dan ghy <rhyme label="f" type="m" corresp="#s2:l10">meent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Boven dat sy <rhyme label="a" type="m">gheeft</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sulcke schatten, <rhyme label="b" type="f">omvatten</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Nae waarden op <rhyme label="c" type="f">Aarden</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Die gheen kan, noyt <rhyme label="a" type="m" corresp="#s3:l1">heeft</rhyme>.</l>
        <l id="s3:l5" met="2" type="+-">Het saligh <rhyme label="d" type="f">leven</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Wert daar door <rhyme label="e" type="f">verkreghen</rhyme>;</l>
        <l id="s3:l7" met="2" type="+-">En daar <rhyme label="d" type="f" corresp="#s3:l5">beneven</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">'s Heeren rijcken <rhyme label="e" type="f" corresp="#s3:l6">seghen</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Welck sal <rhyme label="e" type="f" corresp="#s3:l6">overweghen</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Als 's Weerelts <rhyme label="f" type="m">heerlijckheyt</rhyme>.</l>
        <l id="s3:l11" met="3" type="-+">Wilt dan minnen met <rhyme label="g" type="f">sinnen</rhyme>,</l>
        <l id="s3:l12" met="2" type="-+">Betrachten met <rhyme label="h" type="f">krachten</rhyme>,</l>
        <l id="s3:l13" met="3" type="+-">Gods <rhyme label="f" type="m" corresp="#s3:l10">oprechtigheyt</rhyme>.</l>
        <l id="s3:l14" met="3" type="-+">Godt sal gheven, langh <rhyme label="i" type="f">leven</rhyme>,</l>
        <l id="s3:l15" met="2" type="-+">U eeren, als <rhyme label="j" type="f">Heeren</rhyme>,</l>
        <l id="s3:l16" met="3" type="+-">In all' <rhyme label="f" type="m" corresp="#s3:l10">eeuwicheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
