<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>174915</id>
    <date>
      <year-start>1861</year-start>
      <year-end>1861</year-end>
    </date>
    <tags>
      <tag standard-name="kinderlied" translation="children's song">kinderlied</tag>
      <tag standard-name="avondlied" translation="evening song">avondlied</tag>
    </tags>
    <melody>Kindertjes zijt ge nog niet moe</melody>
    <categories>
      <category translation="children">kinderen</category>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Kindertjes! zijt ge nog niet <rhyme label="a" type="m">moê</rhyme>? -</l>
        <l id="s1:l2" met="4" type="+-">Of gij uw oogjes al wilt <rhyme label="b" type="f">wrijven</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ziet! ze vallen zoo zachtkens <rhyme label="a" type="m" corresp="#s1:l1">toe</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Vroeg je niet om 'reis op te <rhyme label="b" type="f" corresp="#s1:l2">blijven</rhyme>?</l>
        <l id="s1:l5" met="4" type="+-">Hadt ge maar om Klaas Vaak <rhyme label="c" type="m">gedacht</rhyme>;</l>
        <l id="s1:l6" met="4" type="+-">Kindertjes! komt, uw bedje <rhyme label="c" type="m" corresp="#s1:l5">wacht</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Is het niet of uw hartje <rhyme label="a" type="m">slaapt</rhyme>? -</l>
        <l id="s2:l2" met="4" type="+-">Worden uw koontjes niet al <rhyme label="b" type="f">strakker</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Foei, hoe dat er uw mondje <rhyme label="a" type="m" corresp="#s2:l1">gaapt</rhyme>!</l>
        <l id="s2:l4" met="4" type="+-">Zingt maar eens meê, dan wordt ge <rhyme label="b" type="f" corresp="#s2:l2">wakker</rhyme>!</l>
        <l id="s2:l5" met="4" type="+-">Kleedt je dan uit en bidt den <rhyme label="c" type="m">Heer</rhyme>;</l>
        <l id="s2:l6" met="4" type="+-">Kindertjes! komt, 't is tijd en <rhyme label="c" type="m" corresp="#s2:l5">meer</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
