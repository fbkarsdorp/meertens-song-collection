      <tag>spiritual song</tag>
    </tags>
    <melody>Ik heb de groene straten</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn Engel word <rhyme label="a" type="f">gesonden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Godt den Heere <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Tot een die lach in <rhyme label="a" type="f" corresp="#s1:l1">sonden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En swom in 's werelts <rhyme label="b" type="m" corresp="#s1:l2">vloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sondaer, ghy meught wel <rhyme label="a" type="f">beven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat ghy in sonden <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Den Heer sal u <rhyme label="a" type="f" corresp="#s2:l1">begeven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En corten uwen <rhyme label="b" type="m" corresp="#s2:l2">tijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den sondaer lach <rhyme label="a" type="f">alleene</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hy word verschrickt <rhyme label="b" type="m">voorwaer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Seer ras was hy te <rhyme label="a" type="f" corresp="#s3:l1">beene</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Benaut soo stont hy <rhyme label="b" type="m" corresp="#s3:l2">daer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt u quaet leven <rhyme label="a" type="f">laten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">De deuchd wilt nemen <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Neemt Godt tot uwen <rhyme label="a" type="f" corresp="#s4:l1">baten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Eer u de doot coemt <rhyme label="b" type="m" corresp="#s4:l2">slaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sou my de doot <rhyme label="a" type="f">bevanghen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">In mijn quaet leven <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Och doetse wat <rhyme label="a" type="f" corresp="#s5:l1">verlangen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ick ben van deuchden <rhyme label="b" type="m" corresp="#s5:l2">bloot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick sal u niet <rhyme label="a" type="f">verlaten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Stelt u in goeden <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Mijn woorden wilt wel <rhyme label="a" type="f" corresp="#s6:l1">vaten</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Eer ghy ter aerden <rhyme label="b" type="m" corresp="#s6:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wat helpt dat <rhyme label="a" type="f">triumpheeren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Als ick soo sterven <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">'k Wil my van als af <rhyme label="a" type="f" corresp="#s7:l1">keeren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En soecken d'eewich <rhyme label="b" type="m" corresp="#s7:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Och mijn beminde <rhyme label="a" type="f">ziele</rhyme></l>
        <l id="s8:l2" met="3" type="-+">En zijt niet <rhyme label="b" type="m">wanckelbaer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat u niet en <rhyme label="a" type="f" corresp="#s8:l1">verniele</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat pack der sonden <rhyme label="b" type="m" corresp="#s8:l2">swaer</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Adieu, o werelt <rhyme label="a" type="f">schoone</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Ick neme mijnen <rhyme label="b" type="m">ganck</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Tot Christus doorne <rhyme label="a" type="f" corresp="#s9:l1">croone</rhyme></l>
        <l id="s9:l4" met="3" type="-+">En tot dat Cruyce <rhyme label="b" type="m" corresp="#s9:l2">lanck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Jesu lief <rhyme label="a" type="f">wtvercoren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Mijn troost, mijn <rhyme label="b" type="m">toeverlaet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En laet my niet <rhyme label="a" type="f" corresp="#s10:l1">verloren</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Mijn hert heel op u <rhyme label="b" type="m" corresp="#s10:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Jesu mijn lief <rhyme label="a" type="f">gepresen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Mijns hert en liefste <rhyme label="b" type="m">deel</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Laet my doch met u <rhyme label="a" type="f" corresp="#s11:l1">wesen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">In 's Hemels soet <rhyme label="b" type="m" corresp="#s11:l2">prieel</rhyme>.</l>
      </lg>
    </lg>
  </text>
