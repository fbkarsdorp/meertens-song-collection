<song>
  <meta>
    <id>34441</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <location>
      <orginal-name>antwerpen</orginal-name>
      <standard-name>Antwerp, Belgium</standard-name>
      <coordinates>
        <lon>51.2211097</lon>
        <lat>4.3997081</lat>
      </coordinates>
    </location>
    <tags>
      <tag>martyr's song</tag>
    </tags>
    <melody>Heeft iemand ooit gesmaakt</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LAet ons met spel en <rhyme label="a" type="m">vreught</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met soeten sanck <rhyme label="b" type="f">vercieren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De Martelaeren <rhyme label="a" type="m" corresp="#s1:l1">deught</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hun Kransken en <rhyme label="b" type="f" corresp="#s1:l2">Laurieren</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Laet ons verheffen <rhyme label="c" type="m">seer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wiêns doodt is voor den <rhyme label="c" type="m" corresp="#s1:l5">Heer</rhyme></l>
        <l id="s1:l7" met="2" type="+-"><rhyme label="d" type="m">Eeuwelijck</rhyme>,</l>
        <l id="s1:l8" met="2" type="+-"><rhyme label="d" type="m" corresp="#s1:l7">Costelijck</rhyme>;</l>
        <l id="s1:l9" met="4" type="+-">Die met hem nu <rhyme label="d" type="m" corresp="#s1:l7">blijdelijck</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Besitten <rhyme label="d" type="m" corresp="#s1:l7">t'Hemelrijck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Met wat ghedichten <rhyme label="a" type="m">lof</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Sullen wy u best' <rhyme label="b" type="f">noemen</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Uyt den Gorcomschen <rhyme label="a" type="m" corresp="#s2:l1">hof</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wel-rieckende schoon <rhyme label="b" type="f" corresp="#s2:l2">bloemen</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Uyt t'hol van <rhyme label="c" type="m">Bolle-lant</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Jn t'Hemels hof <rhyme label="c" type="m" corresp="#s2:l5">gheplant</rhyme>;</l>
        <l id="s2:l7" met="2" type="+-">Seer <rhyme label="d" type="m">verfoyt</rhyme></l>
        <l id="s2:l8" met="2" type="+-">En <rhyme label="d" type="m" corresp="#s2:l7">Besnoyt</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Staet g'aldaer nu groen en <rhyme label="d" type="m" corresp="#s2:l7">bloyt</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Met glorîe <rhyme label="d" type="m" corresp="#s2:l7">overvloyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gheen pijn, gheen druck, gheen <rhyme label="a" type="m">smert</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Kost oyt soo veel <rhyme label="b" type="f">ghewercken</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Dat u lie manlijck <rhyme label="a" type="m" corresp="#s3:l1">hert</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Soud' laeten t'hooft der <rhyme label="b" type="f" corresp="#s3:l2">Kercken</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Gheen hongher, stanck, oft <rhyme label="c" type="m">dorst</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Gheen stooten op de <rhyme label="c" type="m" corresp="#s3:l5">borst</rhyme>;</l>
        <l id="s3:l7" met="2" type="+-">Gheen <rhyme label="d" type="m">vermaen</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Heeft <rhyme label="d" type="m" corresp="#s3:l7">ghedaen</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">U lie t'oud' gheloof <rhyme label="d" type="m" corresp="#s3:l7">af-gaen</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">En nemen t'nieuwe <rhyme label="d" type="m" corresp="#s3:l7">aen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghepijnight en <rhyme label="a" type="m">gheplaeght</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ghesleurt, veracht, <rhyme label="b" type="f">verstoten</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Met doodts-noodt <rhyme label="a" type="m" corresp="#s4:l1">aengheiaeght</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met schimpen <rhyme label="b" type="f" corresp="#s4:l2">over-goten</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Seer schandelijck <rhyme label="c" type="m">ghenaemt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Van alles-siens <rhyme label="c" type="m" corresp="#s4:l5">ghepraemt</rhyme>:</l>
        <l id="s4:l7" met="2" type="+-">Noyt <rhyme label="d" type="m">verflout</rhyme>,</l>
        <l id="s4:l8" met="2" type="+-">Bleeft g'als <rhyme label="d" type="m" corresp="#s4:l7">gout</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Dat gheproeft is <rhyme label="d" type="m" corresp="#s4:l7">menigh-fout</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Op Christo vast <rhyme label="d" type="m" corresp="#s4:l7">ghebouwt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dus sijt ghy al <rhyme label="a" type="m">ghebracht</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ten Bril, vroome <rhyme label="b" type="f">ghevanghen</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Daer g'al sijt inden <rhyme label="a" type="m" corresp="#s5:l1">nacht</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Naer veel leedts <rhyme label="b" type="f" corresp="#s5:l2">op-ghehanghen</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Daer g'al sijt met de <rhyme label="c" type="m">koordt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">seer jammerlijck <rhyme label="c" type="m" corresp="#s5:l5">vermoordt</rhyme>:</l>
        <l id="s5:l7" met="2" type="+-">Maer van <rhyme label="d" type="m">daer</rhyme></l>
        <l id="s5:l8" met="2" type="+-">Soete <rhyme label="d" type="m" corresp="#s5:l7">schaer</rhyme></l>
        <l id="s5:l9" met="4" type="+-">Klommen tot den Hemel <rhyme label="d" type="m" corresp="#s5:l7">klaer</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Uws sielen <rhyme label="d" type="m" corresp="#s5:l7">allegaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Godts Martelaeren <rhyme label="a" type="m">schoon</rhyme>;</l>
        <l id="s6:l2" met="3" type="-+">O peerlen deser <rhyme label="b" type="f">Landen</rhyme>!</l>
        <l id="s6:l3" met="3" type="-+">Die nu staet voor den <rhyme label="a" type="m" corresp="#s6:l1">throon</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met palmen inde <rhyme label="b" type="f" corresp="#s6:l2">handen</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Voor alle pijn en <rhyme label="c" type="m">leedt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Met klaerheydt nu <rhyme label="c" type="m" corresp="#s6:l5">bekleedt</rhyme>;</l>
        <l id="s6:l7" met="2" type="+-">Voor den <rhyme label="d" type="m">strijdt</rhyme>,</l>
        <l id="s6:l8" met="2" type="+-">En <rhyme label="d" type="m" corresp="#s6:l7">t'verwijdt</rhyme>,</l>
        <l id="s6:l9" met="4" type="+-">U eeuwelijck met Godt <rhyme label="d" type="m" corresp="#s6:l7">verblijdt</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Helpt ons in desen <rhyme label="d" type="m" corresp="#s6:l7">tijdt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Belijders vroom, en <rhyme label="a" type="m">sterck</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Pastoirs en <rhyme label="b" type="f">Minder-broeders</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ghedoodt voor Godes <rhyme label="a" type="m" corresp="#s7:l1">Kerck</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Weest nu des Landts <rhyme label="b" type="f" corresp="#s7:l2">behoeders</rhyme></l>
        <l id="s7:l5" met="3" type="-+">U lieder deught <rhyme label="c" type="m">bethoont</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Daer g'eertijdts hebt <rhyme label="c" type="m" corresp="#s7:l5">ghewoont</rhyme>,</l>
        <l id="s7:l7" met="2" type="+-">Doet <rhyme label="d" type="m">bystandt</rhyme></l>
        <l id="s7:l8" met="2" type="+-">Jn dit <rhyme label="d" type="m" corresp="#s7:l7">Landt</rhyme></l>
        <l id="s7:l9" met="4" type="+-">Het oprecht gheloove <rhyme label="d" type="m" corresp="#s7:l7">plant</rhyme></l>
        <l id="s7:l10" met="3" type="-+">De Ketterye <rhyme label="d" type="m" corresp="#s7:l7">verbant</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
