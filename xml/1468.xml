    <melody>Het waren twee gespelen stout</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe my dit beeckerken schencken <rhyme label="a" type="m">deet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die sal ick beminnen al wast haer <rhyme label="a" type="m" corresp="#s1:l1">leet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat syer my boot, dat syer my <rhyme label="b" type="m">boot</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat had ick veel liever haer mondelijn <rhyme label="b" type="m" corresp="#s1:l3">root</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al heb ick het meysken niet goets <rhyme label="a" type="m">genoech</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Het isser voor jonge luyt immers te <rhyme label="a" type="m" corresp="#s2:l1">vroech</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Om 't goetjen te raen, om t' goetjen te <rhyme label="b" type="m">raen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daer laet ick de oude luy mede <rhyme label="b" type="m" corresp="#s2:l3">begaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De rijckdommen steken veel sorgen <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Hoe weyniger goets hoe vrolijcker <rhyme label="a" type="m" corresp="#s3:l1">sin</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Sy binnen al vro, sy binnen al <rhyme label="b" type="m">vro</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Die't bedde verteeren en slapen op <rhyme label="b" type="m" corresp="#s3:l3">stro</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die mijnder dit kroesken sal doen <rhyme label="a" type="m">bescheyt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Die sal ick beminnen al wast hem <rhyme label="a" type="m" corresp="#s4:l1">leyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En dencken daer an, en dencken daer <rhyme label="b" type="m">an</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Als ick vro morgens niet slapen en <rhyme label="b" type="m" corresp="#s4:l3">can</rhyme>.</l>
      </lg>
    </lg>
  </text>
