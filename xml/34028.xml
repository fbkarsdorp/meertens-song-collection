  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OP dees <rhyme label="a" type="m">Hoogen-tijdt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Laet ons te samen <rhyme label="b" type="f">singen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met een soet <rhyme label="a" type="m" corresp="#s1:l1">jolijdt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van deese blijde <rhyme label="b" type="f" corresp="#s1:l2">dingen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Daer men nu van <rhyme label="c" type="m">vertelt</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">Hoe Christus met <rhyme label="c" type="m" corresp="#s1:l5">gewelt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Satan heeft <rhyme label="c" type="m" corresp="#s1:l5">neergevelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy quam op de <rhyme label="a" type="m">baen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met nieuw manier van <rhyme label="b" type="f">vechten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wie souw 't soo <rhyme label="a" type="m" corresp="#s2:l1">verstaen</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Aen 't Kruys liet hy hem <rhyme label="b" type="f" corresp="#s2:l2">hechten</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Als eenen <rhyme label="c" type="m">Moordenaer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hoe wel dat het was <rhyme label="c" type="m" corresp="#s2:l5">klaer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat hy onnoosel <rhyme label="c" type="m" corresp="#s2:l5">waer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Soo heeft hy de <rhyme label="a" type="m">Doodt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Door sijne doodt <rhyme label="b" type="f">verwonnen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En gemaekt <rhyme label="a" type="m" corresp="#s3:l1">beroodt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En 't eenemael <rhyme label="b" type="f" corresp="#s3:l2">verslonnen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Al de voorgaende <rhyme label="c" type="m">schandt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die is nu heel aen <rhyme label="c" type="m" corresp="#s3:l5">kandt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Nu is hy <rhyme label="c" type="m" corresp="#s3:l5">triumphant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Door sijn eygen <rhyme label="a" type="m">kraght</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Op Paessche-dagh <rhyme label="b" type="f">verresen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Uyt 't beslooten <rhyme label="a" type="m" corresp="#s4:l1">graght</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Tot d' Wakers groote <rhyme label="b" type="f" corresp="#s4:l2">vreesen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">O wonderlijke <rhyme label="c" type="m">saek</rhyme>!</l>
        <l id="s4:l6" met="3" type="-+">O spijdt van d' Helschen <rhyme label="c" type="m" corresp="#s4:l5">draek</rhyme>!</l>
        <l id="s4:l7" met="3" type="-+">O Christenen <rhyme label="c" type="m" corresp="#s4:l5">vermaek</rhyme>!</l>
      </lg>
    </lg>
  </text>
