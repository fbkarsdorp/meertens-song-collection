  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SO 't yerdsch' swiet-luwdig <rhyme label="a" type="f">sjongjen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">U wz 't hert korts t'eare' <rhyme label="b" type="m">uwt-tjocht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Tinck 't hymmelsch' Ing'le <rhyme label="a" type="f" corresp="#s1:l1">tongjen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Het macket dat in <rhyme label="b" type="m" corresp="#s1:l2">nocht</rhyme>!</l>
        <l id="s1:l5" met="3" type="-+">Tinss 't hymmelsch Ing'le <rhyme label="a" type="f" corresp="#s1:l1">tongjen</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Ing'le <rhyme label="a" type="f" corresp="#s1:l1">tongjen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Kin m'e hier soo swiet <rhyme label="a" type="f">Musijckje</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat Goads Gaest 't hert <rhyme label="b" type="m">yngiet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Fen Goads frjune': het sil 't <rhyme label="a" type="f" corresp="#s2:l1">lijckje</rhyme></l>
        <l id="s2:l4" met="3" type="-+">By 't hymmelsch' yvig <rhyme label="b" type="m" corresp="#s2:l2">Liet</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">O Goads frjune! het sil 't <rhyme label="a" type="f" corresp="#s2:l1">lijckje</rhyme>?</l>
        <l id="s2:l6" met="2" type="-+">O frjune! <rhyme label="a" type="f" corresp="#s2:l1">sijckje</rhyme>?</l>
      </lg>
    </lg>
