    <tags/>
    <melody>Geef mij te drinken naar mijn dorst</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ia vreed’ en rust met vreughden <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Comen sy in haer camers <rhyme label="b" type="f">schoone</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die hier met een oprecht <rhyme label="a" type="m" corresp="#s1:l1">gemoed</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Wandelen in haren <rhyme label="b" type="f" corresp="#s1:l2">persoone</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Godt salse met des levens <rhyme label="b" type="f" corresp="#s1:l2">croone</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Vercierne, en met cleeders <rhyme label="c" type="m">wit</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Sullen sy weyden voor den <rhyme label="b" type="f" corresp="#s1:l2">throone</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Daer ‘t Lam met blinckend’ aenschijn <rhyme label="c" type="m" corresp="#s1:l6">sit</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met hertelijck verlanghen <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Conden sy haer selven <rhyme label="b" type="f">begeven</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Tot den Lichamelijcken <rhyme label="a" type="m" corresp="#s2:l1">doot</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Want ‘t is een inganck tot den <rhyme label="b" type="f" corresp="#s2:l2">leven</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">‘t Geen and’re doet schricken en <rhyme label="b" type="f" corresp="#s2:l2">beven</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dat was haer even als een <rhyme label="c" type="m">feest</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Want God sijn Liefd’ heeft in <rhyme label="b" type="f" corresp="#s2:l2">geschreven</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">In haer herten door sijnen <rhyme label="c" type="m" corresp="#s2:l6">Geest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Haer herte Pilgremagie <rhyme label="a" type="m">ginck</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Beneden hier, soo ‘t is <rhyme label="b" type="f">ghebleken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En dat was haer het liefste <rhyme label="a" type="m" corresp="#s3:l1">dinck</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Om van het rijcke Godts te <rhyme label="b" type="f" corresp="#s3:l2">spreken</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Want siet haer herte was <rhyme label="b" type="f" corresp="#s3:l2">bestreken</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Met den Magneet die boven <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Daerom na boven stont <rhyme label="b" type="f" corresp="#s3:l2">geweken</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Al haers herten <rhyme label="c" type="m" corresp="#s3:l6">ghetuyghenis</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Cleyn en onnoosel in ‘t <rhyme label="a" type="m">aensien</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ootmoedigh en neder <rhyme label="b" type="f">ghesoncken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">By velen onbekent mits <rhyme label="a" type="m" corresp="#s4:l1">dien</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Dat sy alleen inwendigh <rhyme label="b" type="f" corresp="#s4:l2">bloncken</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En van ghenaden vol <rhyme label="b" type="f" corresp="#s4:l2">gheschoncken</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">In Liefde droncken door s’Geest <rhyme label="c" type="m">cracht</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Haer woorden als vurighe <rhyme label="b" type="f" corresp="#s4:l2">voncken</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Dreven die herten tot <rhyme label="c" type="m" corresp="#s4:l6">aendacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Persoonen veel maeckt Liefde <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En uyt den Geest comt Geest te <rhyme label="b" type="f">voren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En waermen is met Godt <rhyme label="a" type="m" corresp="#s5:l1">ghemeen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Daer wert het onderscheyt <rhyme label="b" type="f" corresp="#s5:l2">verloren</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Al wat van boven is <rhyme label="b" type="f" corresp="#s5:l2">gheboren</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Dat scheyt hem af van <rhyme label="c" type="m">creatuyr</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">En ‘t laet hem in de Liefde <rhyme label="b" type="f" corresp="#s5:l2">smoren</rhyme></l>
        <l id="s5:l8" met="4" type="-+">In dat verteerent soete <rhyme label="c" type="m" corresp="#s5:l6">vuyr</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Creaturelijck <rhyme label="a" type="m">onderscheyt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Is in het onvolmaeckte <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer vintmen niet dan <rhyme label="a" type="m" corresp="#s6:l1">duysterheyt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maer als de Zuiel is <rhyme label="b" type="f" corresp="#s6:l2">opgeresen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Soo wert sy haest van Godt <rhyme label="b" type="f" corresp="#s6:l2">genesen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Al door sijn Lieffelijck <rhyme label="c" type="m">aenschijn</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Dies hebben sy vreucht uyt <rhyme label="b" type="f" corresp="#s6:l2">gelesen</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Die van ‘t Lichaem ontbonden <rhyme label="c" type="m" corresp="#s6:l6">sijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wy sien hier wel met ooghen <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Als of het sterven waer een <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Maer dit cont ghy eensdeels <rhyme label="a" type="m" corresp="#s7:l1">verstaen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Als uwen Geest hem gaet <rhyme label="b" type="f" corresp="#s7:l2">vermeyden</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En als hy keert in <rhyme label="b" type="f" corresp="#s7:l2">d’eeuwicheyden</rhyme></l>
        <l id="s7:l6" met="4" type="-+">En alle tijd’lijckheyt <rhyme label="c" type="m">ontvliet</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Hy comt dan eerst in vrye <rhyme label="b" type="f" corresp="#s7:l2">weyden</rhyme></l>
        <l id="s7:l8" met="4" type="-+">Als hy het aertsche minst <rhyme label="c" type="m" corresp="#s7:l6">aensiet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Het is natuur een lyden <rhyme label="a" type="m">swaer</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Hier goede vrienden te <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als wy aensien hoe wy met <rhyme label="a" type="m" corresp="#s8:l1">haer</rhyme></l>
        <l id="s8:l4" met="4" type="-+">En sy met ons in Liefde <rhyme label="b" type="f" corresp="#s8:l2">saten</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Maer dit comt ons weder te <rhyme label="b" type="f" corresp="#s8:l2">baten</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Van suster, broeder, ofte <rhyme label="c" type="m">vrient</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Dat sy ghenieten boven <rhyme label="b" type="f" corresp="#s8:l2">maten</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Daer toe dit leven heeft <rhyme label="c" type="m" corresp="#s8:l6">gedient</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">In desen leven eensdeels <rhyme label="a" type="m">wert</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Prijs, eer’, en vreed’ in God <rhyme label="b" type="f">bevonden</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Doch al vermenght met pijn en <rhyme label="a" type="m" corresp="#s9:l1">smert</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Maer als dit sterff’lijc wert <rhyme label="b" type="f" corresp="#s9:l2">verslonden</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">En dat de Ziele is <rhyme label="b" type="f" corresp="#s9:l2">verswonden</rhyme></l>
        <l id="s9:l6" met="4" type="-+">In Godts volcomen <rhyme label="c" type="m">Heer’lijkheyt</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Die soeticheyt is niet om <rhyme label="b" type="f" corresp="#s9:l2">gronden</rhyme></l>
        <l id="s9:l8" met="4" type="-+">Die sulcken Ziele is <rhyme label="c" type="m" corresp="#s9:l6">bereyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Is hier vrientschap met Godt en <rhyme label="a" type="m">Mensch</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Can hier de Ziels Godt <rhyme label="b" type="f">ghenaken</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Hoe veel te meer sal dan na <rhyme label="a" type="m" corresp="#s10:l1">wensch</rhyme></l>
        <l id="s10:l4" met="4" type="-+">De Ziel het God’lijck wesen <rhyme label="b" type="f" corresp="#s10:l2">smaken</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Ist soet? God sien in doncker <rhyme label="b" type="f" corresp="#s10:l2">spraken</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Hoe veel te meer in claerheyt <rhyme label="c" type="m">dan</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Wanneer Godt sal volcomen <rhyme label="b" type="f" corresp="#s10:l2">maken</rhyme></l>
        <l id="s10:l8" met="4" type="-+">Daer wy de voor-smaeck hebben <rhyme label="c" type="m" corresp="#s10:l6">van</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ist niet een over-soete <rhyme label="a" type="m">vreught</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Personelijck te <rhyme label="b" type="f">openbaren</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En Geestelijck te sijn <rhyme label="a" type="m" corresp="#s11:l1">verheught</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Met al die Hemelsche <rhyme label="b" type="f" corresp="#s11:l2">Heyr-scharen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Die oyt van aen beginsel <rhyme label="b" type="f" corresp="#s11:l2">waren</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Daerom O vrienden bidt en <rhyme label="c" type="m">waeckt</rhyme></l>
        <l id="s11:l7" met="4" type="-+">Op dat ghy daer oock meucht <rhyme label="b" type="f" corresp="#s11:l2">vergaren</rhyme>,</l>
        <l id="s11:l8" met="4" type="-+">Daermen Godts Liefd’ in volheydt <rhyme label="c" type="m" corresp="#s11:l6">smaeckt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Met Christo sijnd’ in ‘t lyden <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Wertmen namaels met hem <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Sterven wy met onsen <rhyme label="a" type="m" corresp="#s12:l1">Princier</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Soo sullen wy oock met hem <rhyme label="b" type="f" corresp="#s12:l2">leven</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">‘t Schaet niet wat oordeel menschen <rhyme label="b" type="f" corresp="#s12:l2">geven</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Godt kent de sijne over <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Die in den Boeck staen op <rhyme label="b" type="f" corresp="#s12:l2">gheschreven</rhyme></l>
        <l id="s12:l8" met="4" type="-+">Hy ‘t sijnder tijt wel vinden <rhyme label="c" type="m" corresp="#s12:l6">sal</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
