  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Gij, die, in 't glansrijk <rhyme label="a" type="f">oosten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Uw heldre straalen <rhyme label="b" type="m">spreidt</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Gelijk de zon, des <rhyme label="c" type="f">morgens</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Heel de aard verkwikt, <rhyme label="b" type="m" corresp="#s1:l2">verblijdt</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Gij, die, door uwe <rhyme label="d" type="f">kunde</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Den Achtbren <rhyme label="e" type="m">onderstut</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En, bij het moeilijk <rhyme label="f" type="f">werken</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Den Metslaar strekt tot <rhyme label="e" type="m" corresp="#s1:l6">nut</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Gij, Broeders! die, in 't <rhyme label="a" type="f">westen</rhyme>;</l>
        <l id="s2:l2" met="3" type="-+">Waar niets uw oog <rhyme label="b" type="m">ontgaat</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Het werk der <rhyme label="c" type="f">arbeidslieden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Kunstkundig <rhyme label="b" type="m" corresp="#s2:l2">gadeslaat</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Gij, deugdrijke <rhyme label="d" type="f">ambtenaaren</rhyme>!</l>
        <l id="s2:l6" met="3" type="-+">Die d' onderlingen <rhyme label="e" type="m">band</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Der eendragt blijft <rhyme label="f" type="f">versterken</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En alles houdt in <rhyme label="e" type="m" corresp="#s2:l6">stand</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gij, achtenswaarde <rhyme label="a" type="f">Broeders</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Die ons uw bijzijn <rhyme label="b" type="m">schenkt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En ook daar door wilt <rhyme label="c" type="f">toonen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dat ge ons in gunst <rhyme label="b" type="m" corresp="#s3:l2">gedenkt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Het zij gij, hier of <rhyme label="d" type="f">elders</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">De kunst beöefent, <rhyme label="e" type="m">mint</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Of wel in stil <rhyme label="f" type="f">vernoegen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Het loon voor arbeid <rhyme label="e" type="m" corresp="#s3:l6">vindt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Gij, meesters! die den <rhyme label="a" type="f">tempel</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ten opbouw u <rhyme label="b" type="m">betrouwd</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Voltooit, en knecht en <rhyme label="c" type="f">leerling</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Bij hunne pligten <rhyme label="b" type="m" corresp="#s4:l2">houdt</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Gij, medgezel en <rhyme label="d" type="f">leerling</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Gij, Broeders in de <rhyme label="e" type="m">kunst</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ontvangt gij allen, <rhyme label="f" type="f">braaven</rhyme>!</l>
        <l id="s4:l8" met="3" type="-+">Deez' zangen in uw <rhyme label="e" type="m" corresp="#s4:l6">gunst</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een jaar is weêr <rhyme label="a" type="f">verstreeken</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">'t Verzonk in de <rhyme label="b" type="m">eeuwigheid</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Ja, welk een tal van <rhyme label="c" type="f">jaaren</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Is als een rook <rhyme label="b" type="m" corresp="#s5:l2">verspreid</rhyme>!</l>
        <l id="s5:l5" met="3" type="-+">Vergunt mij blijd te <rhyme label="d" type="f">zingen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Nu 's Opperbouwheers <rhyme label="e" type="m">gunst</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Ons weder doet <rhyme label="f" type="f">vergaêren</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Ter oefning onzer <rhyme label="e" type="m" corresp="#s5:l6">kunst</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">ô! Konden wij, mijn <rhyme label="a" type="f">Broeders</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En eedle <rhyme label="b" type="m">vriendenrij</rhyme>!</l>
        <l id="s6:l3" met="3" type="-+">Ras leeren aan <rhyme label="c" type="f">profaanen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wat echt vrijmetslen <rhyme label="b" type="m" corresp="#s6:l2">zij</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Bij winkelhaak en <rhyme label="d" type="f">passer</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Is 't, dat men orde <rhyme label="e" type="m">mint</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">'t Is tusschen deeze <rhyme label="f" type="f">beiden</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Dat men zijn' Broeder <rhyme label="e" type="m" corresp="#s6:l6">vindt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">ô, Welk een reeks van <rhyme label="a" type="f">eeuwen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sinds Broeder <rhyme label="b" type="m">salomon</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Op Moria's <rhyme label="c" type="f">gebergte</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Den Tempelbouw <rhyme label="b" type="m" corresp="#s7:l2">begon</rhyme>!</l>
        <l id="s7:l5" met="3" type="-+">Dat wij, ô, waarde <rhyme label="d" type="f">Broeders</rhyme>!</l>
        <l id="s7:l6" met="3" type="-+">Met ijver, lust en <rhyme label="e" type="m">moed</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Hem in een voorbeeld <rhyme label="f" type="f">volgen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Zoo wijs en schoon en <rhyme label="e" type="m" corresp="#s7:l6">goed</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dat steeds de <rhyme label="a" type="f">Metslaarijë</rhyme></l>
        <l id="s8:l2" met="3" type="-+">In eer en aanzien <rhyme label="b" type="m">bloeij'</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Dat elke Loge in <rhyme label="c" type="f">leden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">In deugd en eendragt <rhyme label="b" type="m" corresp="#s8:l2">groeij'</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En 't baldren der <rhyme label="d" type="f">kanonnen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Aan ons vernoegd <rhyme label="e" type="m">banket</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Bij 't heiligst der <rhyme label="f" type="f">getalen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Hier op het zegel <rhyme label="e" type="m" corresp="#s8:l6">zett'</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
