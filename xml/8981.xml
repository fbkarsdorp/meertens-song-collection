  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">CHRIstus de Heer ten Jordaen <rhyme label="a" type="m">quam</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Nae zijnes Vaders <rhyme label="b" type="f">willen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van sanct Johans de Doope <rhyme label="a" type="m" corresp="#s1:l1">nam</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Syn Werck end Ampt <rhyme label="b" type="f" corresp="#s1:l2">t'Vervullen</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Daer woud' hy stifften ons een <rhyme label="c" type="m">Badt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Te wasschen ons van <rhyme label="d" type="f">Sonden</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Versuypen oock den bitter'n <rhyme label="c" type="m" corresp="#s1:l5">Doot</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Door syn selffs Bloet end <rhyme label="d" type="f" corresp="#s1:l6">Wonden</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Het gold' een nieuwe <rhyme label="e" type="f">Leven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">So hoort end mercket alle <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wat Godt heeft selffs die <rhyme label="b" type="f">Doope</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">End wat een Christ ghelooven <rhyme label="a" type="m" corresp="#s2:l1">sel</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Te mijden Ketters <rhyme label="b" type="f" corresp="#s2:l2">hoopen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Godt spreeckt end wil, dat Water <rhyme label="c" type="m">sy</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Doch niet alleen slecht <rhyme label="d" type="f">Water</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Syn heylich Woort is oock daer <rhyme label="c" type="m" corresp="#s2:l5">by</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Syn Geest so Rijck van <rhyme label="d" type="f" corresp="#s2:l6">Gaven</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Die is al hier die <rhyme label="e" type="f">Dooper</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sulcx heeft hy ons bewijset <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met Woorden end <rhyme label="b" type="f">ghedaente</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Des Vaders stem daer <rhyme label="a" type="m" corresp="#s3:l1">Openbaer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Aen Jordaen ons <rhyme label="b" type="f" corresp="#s3:l2">vermaende</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy sprack: Dat is mijn lieve <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Aen dien ick heb <rhyme label="d" type="f">Behaghen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Dien wil ick u bevolen <rhyme label="c" type="m" corresp="#s3:l5">schoon</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dat ghy sult t'Allen <rhyme label="d" type="f" corresp="#s3:l6">Daghen</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Nae volghen syner <rhyme label="e" type="f">Leere</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Oock Godes Soon hier selve <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In syner Menscheyt <rhyme label="b" type="f">reyne</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die heylig' Gheest hem neder <rhyme label="a" type="m" corresp="#s4:l1">laet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ghelijck een duyf so <rhyme label="b" type="f" corresp="#s4:l2">cleyne</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dies wy niet sullen Twijff'len <rhyme label="c" type="m">dan</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Als wy Ghedoopet <rhyme label="d" type="f">waerden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">All' dry Persoon Ghedoopet <rhyme label="c" type="m" corresp="#s4:l5">haen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Daer met by ons op <rhyme label="d" type="f" corresp="#s4:l6">Aerden</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Te Woonen haer <rhyme label="e" type="f">begeven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Syn Jongers heet de Heere <rhyme label="a" type="m">Christ</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Gaet alle Werelt te <rhyme label="b" type="f">Leeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat sy in Sond' verloren <rhyme label="a" type="m" corresp="#s5:l1">is</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Haer sal tot Boete <rhyme label="b" type="f" corresp="#s5:l2">keeren</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Wie ghelooft en wert ghedoopt daer <rhyme label="c" type="m">by</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Sal Salicheyt <rhyme label="d" type="f">verwerven</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Een Nieuw' gheboren Mensch is <rhyme label="c" type="m" corresp="#s5:l5">hy</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Die niet meer en kan <rhyme label="d" type="f" corresp="#s5:l6">sterven</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Maer t'Hemelrijck sal <rhyme label="e" type="f">Erven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wie niet gelooft dees weldaet <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die blijft in synen <rhyme label="b" type="f">Sonden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">End is verdoemt ten Eewighen <rhyme label="a" type="m" corresp="#s6:l1">Doot</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Diep in der Hellen <rhyme label="b" type="f" corresp="#s6:l2">gronden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Niet helpt syn eyghen <rhyme label="c" type="m">heylicheyt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Al syn Doen is <rhyme label="d" type="f">verloren</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">De Erffsond' maeckt tot <rhyme label="c" type="m" corresp="#s6:l5">Nieuticheyt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Daerin hy is <rhyme label="d" type="f" corresp="#s6:l6">gheboren</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Vermach hem selffs niet <rhyme label="e" type="f">helpen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dat Oog' alleen t'water siet <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Als Menschen Water <rhyme label="b" type="f">gieten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die g'loovig' Geest die Cracht <rhyme label="a" type="m" corresp="#s7:l1">verstaen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van Christus bloedich <rhyme label="b" type="f" corresp="#s7:l2">vlieten</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">End is voor hem een Roode <rhyme label="c" type="m">Vloet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Van Christus Bloet <rhyme label="d" type="f">gheverwet</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Die alle schaed' ghenesen <rhyme label="c" type="m" corresp="#s7:l5">doet</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Van Adam <rhyme label="d" type="f" corresp="#s7:l6">Aengheervet</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Oock van ons selffs <rhyme label="e" type="f">begaene</rhyme>.</l>
      </lg>
    </lg>
  </text>
