  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als nu bemerckt het licht rijst <rhyme label="a" type="m">roet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">die blijntheijt bleeck wort nu <rhyme label="a" type="m" corresp="#s1:l1">gedoet</rhyme></l>
        <l id="s1:l3" met="4" type="-+">die ons tot noch toe heff doen <rhyme label="b" type="m">gaen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">dwalen op den verkeerden <rhyme label="b" type="m" corresp="#s1:l3">baen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Laet dit licht brengen claren <rhyme label="a" type="m">scijn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">en maecken dat wij suijuer <rhyme label="a" type="m" corresp="#s2:l1">sijn</rhyme></l>
        <l id="s2:l3" met="4" type="-+">dat wij niet spreken in <rhyme label="b" type="m">bedroch</rhyme></l>
        <l id="s2:l4" met="4" type="-+">niet dencken welck es duijster <rhyme label="b" type="m" corresp="#s2:l3">noch</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dus moet vol lopen den dach <rhyme label="a" type="m">sterck</rhyme></l>
        <l id="s3:l2" met="4" type="-+">dat tong niet liecht, noch handen <rhyme label="a" type="m" corresp="#s3:l1">werk</rhyme></l>
        <l id="s3:l3" met="4" type="-+">noch oech misdoet door quaet <rhyme label="b" type="m">belet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">geen quaet altoos, tlichaem <rhyme label="b" type="m" corresp="#s3:l3">besmet</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Van bouen siet die wachter <rhyme label="a" type="m">neer</rhyme></l>
        <l id="s4:l2" met="4" type="-+">die ons tot allen tijden <rhyme label="a" type="m" corresp="#s4:l1">seer</rhyme></l>
        <l id="s4:l3" met="4" type="-+">ende ons werc naerstich <rhyme label="b" type="m">bescout</rhyme></l>
        <l id="s4:l4" met="4" type="-+">van smergens vroech tot sauonts <rhyme label="b" type="m" corresp="#s4:l3">stout</rhyme></l>
      </lg>
    </lg>
