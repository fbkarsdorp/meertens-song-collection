  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Het ongheluck leert <rhyme label="a" type="f">mercken</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Op Godes krachtigh <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hierom tot sijn <rhyme label="a" type="f" corresp="#s1:l1">verstercken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Bidt ick dat hy <rhyme label="b" type="m" corresp="#s1:l2">hoort</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ghy die ‘t Kruys hebt <rhyme label="c" type="f">gheladen</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Christum wilt volghen <rhyme label="d" type="m">naer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wilt u doch wel <rhyme label="c" type="f" corresp="#s1:l5">beraden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Met sijne woorden <rhyme label="d" type="m" corresp="#s1:l6">klaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soo niet, het sal u <rhyme label="a" type="f">rouwen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat segh ick u <rhyme label="b" type="m">ghewis</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Alle druck en <rhyme label="a" type="f" corresp="#s2:l1">benouwen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">‘t Welck buyten Christo <rhyme label="b" type="m" corresp="#s2:l2">is</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat en mach al niet <rhyme label="c" type="f">baten</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Hoe seer dat het <rhyme label="d" type="m">beswaert</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Wilt sulck een Kruysse <rhyme label="c" type="f" corresp="#s2:l5">haten</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En lijdt nae Christus <rhyme label="d" type="m" corresp="#s2:l6">aert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Soo wert ghy in u <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ghetroost door sijnen <rhyme label="b" type="m">Gheest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ende sult u <rhyme label="a" type="f" corresp="#s3:l1">verblijden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Vresen voor gheen <rhyme label="b" type="m" corresp="#s3:l2">tempeest</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Maer achtent voor <rhyme label="c" type="f">ghenade</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat ghy om wel doen <rhyme label="d" type="m">lijdt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En dancken vroech en <rhyme label="c" type="f" corresp="#s3:l5">spade</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Christum <rhyme label="d" type="m" corresp="#s3:l6">ghebenedijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De werelt kan niet <rhyme label="a" type="f">dancken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Als Godt haer ‘t Kruys op <rhyme label="b" type="m">lecht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Maer spiet uyt ‘s Duyvels <rhyme label="a" type="f" corresp="#s4:l1">stancken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Sy lijft, sy vloeckt, sy <rhyme label="b" type="m" corresp="#s4:l2">vecht</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Voor dwaesheyt of voor <rhyme label="c" type="f">laghen</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Acht sy ‘t als yemant <rhyme label="d" type="m">lijdt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Gheen Kruysse wilse <rhyme label="c" type="f" corresp="#s4:l5">draghen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">‘t Kruys Christi sy <rhyme label="d" type="m" corresp="#s4:l6">benijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer een Christen <rhyme label="a" type="f">behaghen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In ‘t Kruysse Christi <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En wilt met Christo <rhyme label="a" type="f" corresp="#s5:l1">waghen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Soo langhe als hy <rhyme label="b" type="m" corresp="#s5:l2">leeft</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Hy weet dat al die <rhyme label="c" type="f">lijden</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Met Christo hier <rhyme label="d" type="m">voorwaer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Met hem sullen <rhyme label="c" type="f" corresp="#s5:l5">verblijden</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">In eeuwicheyt hier <rhyme label="d" type="m" corresp="#s5:l6">naer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Christus jock dat is <rhyme label="a" type="f">soete</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Sijn pack en is niet <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Voor die doen rechte <rhyme label="a" type="f" corresp="#s6:l1">boete</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ende hem volghen <rhyme label="b" type="m" corresp="#s6:l2">naer</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Maer so wie <rhyme label="c" type="f">(ommesiende</rhyme>)</l>
        <l id="s6:l6" met="3" type="-+">Op den wech stille <rhyme label="d" type="m">staet</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Van Christo is hy <rhyme label="c" type="f" corresp="#s6:l5">vliende</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">En kiest zijn eyghen <rhyme label="d" type="m" corresp="#s6:l6">raet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den welcken hem doet <rhyme label="a" type="f">dolen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als een dwalende <rhyme label="b" type="m">Schaep</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Godts Raet is hem <rhyme label="a" type="f" corresp="#s7:l1">verholen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Door sijnder zonden <rhyme label="b" type="m" corresp="#s7:l2">slaep</rhyme>;</l>
        <l id="s7:l5" met="3" type="-+">Die hem verblint sijn <rhyme label="c" type="f">ooghen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">So dat hy niet en <rhyme label="d" type="m">siet</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En al sijn neerstyich <rhyme label="c" type="f" corresp="#s7:l5">pooghen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Brenght niet voort dan <rhyme label="d" type="m" corresp="#s7:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hy tastet nae den <rhyme label="a" type="f">lichte</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Maer duysternis ist <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat hy door sijn <rhyme label="a" type="f" corresp="#s8:l1">ghesichte</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Aenschouwt breet ende <rhyme label="b" type="m" corresp="#s8:l2">smal</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Gheen vrucht kan hy <rhyme label="c" type="f">oorboren</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Dopor mistroostich <rhyme label="d" type="m">torment</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Sijn doen is al <rhyme label="c" type="f" corresp="#s8:l5">verloren</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Want siende is hy <rhyme label="d" type="m" corresp="#s8:l6">blent</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Sijn hert sal <rhyme label="a" type="f">verflouwen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Als hy hem wel <rhyme label="b" type="m">bedenckt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Ende beghint <rhyme label="a" type="f" corresp="#s9:l1">t’aenschouwen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Wat eyghen raet <rhyme label="b" type="m" corresp="#s9:l2">voortbrengt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Met druck en met <rhyme label="c" type="f">ellende</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Draeght hy een sware <rhyme label="d" type="m">Kruys</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En hy en siet in ‘t <rhyme label="c" type="f" corresp="#s9:l5">eynde</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Gheen troost maer swaer <rhyme label="d" type="m" corresp="#s9:l6">konfuys</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Hy vreest ende <rhyme label="a" type="f">suchtet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Meerder noot komt hem <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Hy bedet ende <rhyme label="a" type="f" corresp="#s10:l1">duchtet</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Siende dat hy niet <rhyme label="b" type="m" corresp="#s10:l2">kan</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Wederomme <rhyme label="c" type="f">gheraken</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Op Christus rechten <rhyme label="d" type="m">padt</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Vreemde ghedachten <rhyme label="c" type="f" corresp="#s10:l5">maken</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Hem dickwils moe en <rhyme label="d" type="m" corresp="#s10:l6">mat</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Nu dit nu dat hy <rhyme label="a" type="f">dincket</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Sijn hert is niet <rhyme label="b" type="m">gherust</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dies hem den moet <rhyme label="a" type="f" corresp="#s11:l1">ontsincket</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Nerghens toe heeft hy <rhyme label="b" type="m" corresp="#s11:l2">lust</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Verbijstert zijn sijn <rhyme label="c" type="f">sinnen</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Hy vint hem heel <rhyme label="d" type="m">ontstelt</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Van buyten en van <rhyme label="c" type="f" corresp="#s11:l5">binnen</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Soo is hy seer <rhyme label="d" type="m" corresp="#s11:l6">ghequelt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Tot dat hem wil <rhyme label="a" type="f">ontfermen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Ende ghenadich <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Aenhoorende sijn <rhyme label="a" type="f" corresp="#s12:l1">kermen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Die ware <rhyme label="b" type="m" corresp="#s12:l2">Medecijn</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Christus Iesus <rhyme label="c" type="f">alleyne</rhyme>:</l>
        <l id="s12:l6" met="3" type="-+">Daer toe zijnde <rhyme label="d" type="m">bequaem</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Tot troosten in ‘t <rhyme label="c" type="f" corresp="#s12:l5">ghemeyne</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Die aenroepen sijn <rhyme label="d" type="m" corresp="#s12:l6">Naem</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">En dat hy hem wil <rhyme label="a" type="f">gheven</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Daer toe sijn Trooster <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Om bidden voor sijn <rhyme label="a" type="f" corresp="#s13:l1">sneven</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Segghende met <rhyme label="b" type="m" corresp="#s13:l2">ootmoet</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Vergheeft hem Abba <rhyme label="c" type="f">Vader</rhyme>:</l>
        <l id="s13:l6" met="3" type="-+">Door Christum dijn lief <rhyme label="d" type="m">kindt</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Sijn zonden <rhyme label="c" type="f" corresp="#s13:l5">allegader</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Troost hy dan weder <rhyme label="d" type="m" corresp="#s13:l6">vint</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">End’ hy begint te <rhyme label="a" type="f">aen-beden</rhyme>.</l>
        <l id="s14:l2" met="3" type="-+">Den Naem Christi <rhyme label="b" type="m">oprecht</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Sijn hert is wel te <rhyme label="a" type="f" corresp="#s14:l1">vreden</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Bereyt als een goet <rhyme label="b" type="m" corresp="#s14:l2">knecht</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Om alleyn te <rhyme label="c" type="f">behaghen</rhyme>:</l>
        <l id="s14:l6" met="3" type="-+">Christum in vreucht, in <rhyme label="d" type="m">noot</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Ende sijn Kruys te <rhyme label="c" type="f" corresp="#s14:l5">draghen</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">Vrymoedigh tot der <rhyme label="d" type="m" corresp="#s14:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Druck en noot hem <rhyme label="a" type="f">begheven</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Vreucht en troost komt hem <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Tot sterven oft tot <rhyme label="a" type="f" corresp="#s15:l1">leven</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Staet hem sijn herte <rhyme label="b" type="m" corresp="#s15:l2">vry</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Hy weet dat al die <rhyme label="c" type="f">sterven</rhyme>:</l>
        <l id="s15:l6" met="3" type="-+">De doot sonder <rhyme label="d" type="m">beswijck</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">Met Christo oock <rhyme label="c" type="f" corresp="#s15:l5">be-erven</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Sullen sijn eeuwigh <rhyme label="d" type="m" corresp="#s15:l6">rijck</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Sijn hert’ dat is vol <rhyme label="a" type="f">vreuchden</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Sterven is hem <rhyme label="b" type="m">ghewin</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Bereyt is hy tot <rhyme label="a" type="f" corresp="#s16:l1">deuchden</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Met eenen blijden <rhyme label="b" type="m" corresp="#s16:l2">sin</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Voor dreck ende voor <rhyme label="c" type="f">schade</rhyme>:</l>
        <l id="s16:l6" met="3" type="-+">Acht hy al ‘s werelts <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Met Godt gaet hy te <rhyme label="c" type="f" corresp="#s16:l5">rade</rhyme>,</l>
        <l id="s16:l8" met="3" type="-+">’t Gheluckt al wat hy <rhyme label="d" type="m" corresp="#s16:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Nu gheeff ick elck te <rhyme label="a" type="f">rechten</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Wie ‘t swaertste Kruysse <rhyme label="b" type="m">draeght</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">De werelt oft Gods <rhyme label="a" type="f" corresp="#s17:l1">knechten</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Oft die afwijckt <rhyme label="b" type="m" corresp="#s17:l2">vertsaecht</rhyme>:</l>
        <l id="s17:l5" met="3" type="-+">En om eenige <rhyme label="c" type="f">saecken</rhyme>,</l>
        <l id="s17:l6" met="3" type="-+">Op den weg omme <rhyme label="d" type="m">siet</rhyme>,</l>
        <l id="s17:l7" met="3" type="-+">Die ‘t lijden al moet <rhyme label="c" type="f" corresp="#s17:l5">smaecken</rhyme>,</l>
        <l id="s17:l8" met="3" type="-+">Die weet ‘t beste <rhyme label="d" type="m" corresp="#s17:l6">bediet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
