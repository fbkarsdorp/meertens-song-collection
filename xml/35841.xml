  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">MIjn Godt, mijn <rhyme label="a" type="m">Een</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijn Al; die ick <rhyme label="b" type="m">bemin</rhyme>;</l>
        <l id="s1:l3" met="2" type="-+">In u <rhyme label="a" type="m" corresp="#s1:l1">alleen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ick alles heb en <rhyme label="b" type="m" corresp="#s1:l2">vin</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">In mijn <rhyme label="c" type="m">smart</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ghy sijt mijn <rhyme label="d" type="m">medecijn</rhyme>;</l>
        <l id="s1:l7" met="2" type="-+">Ghy verlicht 't <rhyme label="c" type="m" corresp="#s1:l5">hart</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Ghy troost my in de <rhyme label="d" type="m" corresp="#s1:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Van binnen <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met uwe vreughden <rhyme label="b" type="m">soet</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Maeckt alles <rhyme label="a" type="m" corresp="#s2:l1">bly</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ghy ondersut 't <rhyme label="b" type="m" corresp="#s2:l2">gemoet</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">U liefde <rhyme label="c" type="m">brandt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Mijn hart en ziel door <rhyme label="d" type="m">wondt</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Hier door 't <rhyme label="c" type="m" corresp="#s2:l5">verstandt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">En alles wort <rhyme label="d" type="m" corresp="#s2:l6">gesondt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Mijn ziele <rhyme label="a" type="m">noodt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Bloedige <rhyme label="b" type="m">Pellicaen</rhyme>!</l>
        <l id="s3:l3" met="2" type="-+">Met 's Hemels <rhyme label="a" type="m" corresp="#s3:l1">broodt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Kunt ghy allen <rhyme label="b" type="m" corresp="#s3:l2">versaen</rhyme>;</l>
        <l id="s3:l5" met="2" type="-+">En dese <rhyme label="c" type="m">spijs</rhyme></l>
        <l id="s3:l6" met="3" type="-+">ô Jesu! noyt <rhyme label="d" type="m">verteert</rhyme>;</l>
        <l id="s3:l7" met="2" type="-+">Ia, tot een <rhyme label="c" type="m" corresp="#s3:l5">prijs</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Den Mensch in Godt <rhyme label="d" type="m" corresp="#s3:l6">verkeert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Soo ghy maer <rhyme label="a" type="m">blijft</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">ô Iesu! in mijn <rhyme label="b" type="m">ziel</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Ghy al <rhyme label="a" type="m" corresp="#s4:l1">verdrijft</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Waer door ick dickmaels <rhyme label="b" type="m" corresp="#s4:l2">viel</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Geen <rhyme label="c" type="m">Koninghrijck</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Noch 's Werelts <rhyme label="d" type="m">soetigheyt</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Kan zijn <rhyme label="c" type="m" corresp="#s4:l5">gelijck</rhyme></l>
        <l id="s4:l8" met="3" type="-+">U <rhyme label="d" type="m" corresp="#s4:l6">tegenwoordigheyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Mijn Godt, mijn <rhyme label="a" type="m">Al</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Soo ghy by my maer <rhyme label="b" type="m">zijt</rhyme>;</l>
        <l id="s5:l3" met="2" type="-+">Verwinnen <rhyme label="a" type="m" corresp="#s5:l1">zal</rhyme></l>
        <l id="s5:l4" met="3" type="-+">'t Vleesch, Sathan, 's Werelts <rhyme label="b" type="m" corresp="#s5:l2">strijt</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Die u <rhyme label="c" type="m">verstoot</rhyme></l>
        <l id="s5:l6" met="3" type="-+">'t Hart blijft altijdt <rhyme label="d" type="m">beswaert</rhyme> //</l>
        <l id="s5:l7" met="2" type="-+">'t Leven is <rhyme label="c" type="m" corresp="#s5:l5">doodt</rhyme>;</l>
        <l id="s5:l8" met="3" type="-+">Ia, heeft een Hel op <rhyme label="d" type="m" corresp="#s5:l6">d'aerdt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">O klaer <rhyme label="a" type="m">fonteyn</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">Ghy maeckt mijn hart <rhyme label="b" type="m">gerust</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Ghy maeckt mijn <rhyme label="a" type="m" corresp="#s6:l1">reyn</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Ghy waeckt, ick slaep met <rhyme label="b" type="m" corresp="#s6:l2">lust</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Mijn een, mijn <rhyme label="c" type="m">lief</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Om dat ghy zijt soo <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Tot u <rhyme label="c" type="m" corresp="#s6:l5">gerief</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Ick werp al voor u <rhyme label="d" type="m" corresp="#s6:l6">voet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Soo ick ô <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">U trouw alleen <rhyme label="b" type="m">aenkleef</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Na mijn <rhyme label="a" type="m" corresp="#s7:l1">begeer</rhyme></l>
        <l id="s7:l4" met="3" type="-+">'k Heb leven, waer ick <rhyme label="b" type="m" corresp="#s7:l2">leef</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">Om vast te <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Ghy sijt de waerheyt <rhyme label="d" type="m">me</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">En om te <rhyme label="c" type="m" corresp="#s7:l5">gaen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">De wegh tot 's Hemels <rhyme label="d" type="m" corresp="#s7:l6">stee</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Mijn Al, mijn <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Geeft Iesu! waer ick <rhyme label="b" type="m">keer</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Tot 's levens <rhyme label="a" type="m" corresp="#s8:l1">slot</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat 'k u alleen <rhyme label="b" type="m" corresp="#s8:l2">begeer</rhyme>.</l>
        <l id="s8:l5" met="2" type="-+">Maeckt <rhyme label="c" type="m">Bruydegom</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Van mijn zin en wil <rhyme label="d" type="m">quaet</rhyme></l>
        <l id="s8:l7" met="2" type="-+">Een <rhyme label="c" type="m" corresp="#s8:l5">Sonne-blom</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Hout vast mijn liefde <rhyme label="d" type="m" corresp="#s8:l6">draet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
