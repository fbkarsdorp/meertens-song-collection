  <author>Johannes Wilhelmus Bussingh</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Christ'nen! wijd en hart en <rhyme label="a" type="f">ooren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Nu, aen de onnavolgb're <rhyme label="b" type="m">stem</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Van de blijde <rhyme label="a" type="f" corresp="#s1:l1">Hemelchoren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">In de buurt van <rhyme label="b" type="m" corresp="#s1:l2">Bethlehem</rhyme>!</l>
        <l id="s1:l5" met="4" type="+-">Ja; welaen <rhyme label="c" type="f">Natuurgenoten</rhyme>!</l>
        <l id="s1:l6" met="4" type="+-">Komt vervangen wij dien <rhyme label="d" type="m">toon</rhyme>:</l>
        <l id="s1:l7" met="4" type="+-">Helpt jehova's roem <rhyme label="c" type="f" corresp="#s1:l5">vergroten</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Om het schenken van zijn' <rhyme label="d" type="m" corresp="#s1:l6">Zoon</rhyme>. -</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hemeltonen! - <rhyme label="a" type="f">Eng'lentalen</rhyme>! -</l>
        <l id="s2:l2" met="4" type="+-">Luister, zonder <rhyme label="b" type="m">wedergaê</rhyme>! -</l>
        <l id="s2:l3" met="4" type="+-">'t Serafs-lied rolt door de <rhyme label="a" type="f" corresp="#s2:l1">dalen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Van het vruchtbare <rhyme label="b" type="m" corresp="#s2:l2">Efrata</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">‘Eer zij God'! - De vreê zal <rhyme label="c" type="f">dagen</rhyme>: -</l>
        <l id="s2:l6" met="4" type="+-">'t Heil der aerd': - der Eng'len <rhyme label="d" type="m">wensch</rhyme>: -</l>
        <l id="s2:l7" met="4" type="+-">God schept in den mensch <rhyme label="c" type="f" corresp="#s2:l5">behagen</rhyme>: -</l>
        <l id="s2:l8" met="4" type="+-">Hallelujah! - God wordt <rhyme label="d" type="m" corresp="#s2:l6">mensch</rhyme>!’ -</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Eer zij God'! - De mensch, <rhyme label="a" type="f">vermetel</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Spande met den Satan <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dong de Godheid naer den <rhyme label="a" type="f" corresp="#s3:l1">zetel</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Durfde naer Gods kroon te <rhyme label="b" type="m" corresp="#s3:l2">staen</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Jesus komt. - Wijk nacht van <rhyme label="c" type="f">zonden</rhyme>! -</l>
        <l id="s3:l6" met="4" type="+-">Satan wordt nu <rhyme label="d" type="m">neêrgeveld</rhyme>: -</l>
        <l id="s3:l7" met="4" type="+-">'s Hoogstens eer, hoe snood <rhyme label="c" type="f" corresp="#s3:l5">geschonden</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Wordt nu, door Zijn' Zoon, <rhyme label="d" type="m" corresp="#s3:l6">hersteld</rhyme>. -</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Eer zij God'! - Zijn <rhyme label="a" type="f">heilbeloften</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Worden heden waer <rhyme label="b" type="m">gemaekt</rhyme>. -</l>
        <l id="s4:l3" met="4" type="+-">Jesus komt. - Zijn <rhyme label="a" type="f" corresp="#s4:l1">vrijgekoften</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Zijn uit Satans boei <rhyme label="b" type="m" corresp="#s4:l2">geslaekt</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Gods onkreukb're trouw en <rhyme label="c" type="f">waerheid</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Daer de Schaduw-tijd <rhyme label="d" type="m">verdween</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Blinkt, in onbewolkte <rhyme label="c" type="f" corresp="#s4:l5">klaerheid</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Nu door all' de nevels <rhyme label="d" type="m" corresp="#s4:l6">heen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Eer zij God'! - Zijn <rhyme label="a" type="f">alvermogen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">(Eeuwig wonder van <rhyme label="b" type="m">genaê</rhyme>! -)</l>
        <l id="s5:l3" met="4" type="+-">Met ons aek'lig lot <rhyme label="a" type="f" corresp="#s5:l1">bewogen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Sloeg 't gevallen menschdom <rhyme label="b" type="m" corresp="#s5:l2">gaê</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Voegde God- en mensch-heid <rhyme label="c" type="f">zamen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Breidelde de macht der <rhyme label="d" type="m">Hel</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Wil het ongeloof <rhyme label="c" type="f" corresp="#s5:l5">beschamen</rhyme>: -</l>
        <l id="s5:l8" met="4" type="+-">God wordt mensch! - <rhyme label="d" type="m" corresp="#s5:l6">Emanuël</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Eer zij God'! - Aenbiddend <rhyme label="a" type="f">knielen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Voor hunn' Goël en hunn' <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Eng'len, en verloste <rhyme label="a" type="f" corresp="#s6:l1">zielen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Juichend bij Zijn kribbe <rhyme label="b" type="m" corresp="#s6:l2">neêr</rhyme>. -</l>
        <l id="s6:l5" met="4" type="+-">Wijsheid, Liefde, zonder <rhyme label="c" type="f">palen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Blijdschap over 't menschlijk <rhyme label="d" type="m">lot</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Doen de Serafs 't lied <rhyme label="c" type="f" corresp="#s6:l5">herhalen</rhyme>:</l>
        <l id="s6:l8" met="4" type="+-">Hallelujah! - Eer zij <rhyme label="d" type="m" corresp="#s6:l6">God'</rhyme>! -</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Vrede op aerde! - Aen alle <rhyme label="a" type="f">kanten</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Zag men Satans helsche <rhyme label="b" type="m">list</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Zijne zegevanen <rhyme label="a" type="f" corresp="#s7:l1">planten</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Trotsch op wraekzucht, moord en <rhyme label="b" type="m" corresp="#s7:l2">twist</rhyme>. -</l>
        <l id="s7:l5" met="4" type="+-">Jesus komt. - Zijn bloed zal <rhyme label="c" type="f">vloeijen</rhyme>: -</l>
        <l id="s7:l6" met="4" type="+-">Nu keert orde, en vrede, en <rhyme label="d" type="m">rust</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">En, Gods gramschap, hoe aen 't <rhyme label="c" type="f" corresp="#s7:l5">gloeijen</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Wordt in jesus bloed <rhyme label="d" type="m" corresp="#s7:l6">gebluscht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Vrede op aerde! - 't Heil, in <rhyme label="a" type="f">Eden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">In het Vrouwenzaed <rhyme label="b" type="m">voorspeld</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">‘'t Zal den kop der slang <rhyme label="a" type="f" corresp="#s8:l1">vertreden</rhyme>!’</l>
        <l id="s8:l4" met="4" type="+-">Wordt in 't helderst licht <rhyme label="b" type="m" corresp="#s8:l2">gesteld</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Satan, en zijne <rhyme label="c" type="f">Onderdanen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Zonde, Weereld, Dood en <rhyme label="d" type="m">Hel</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Bukken, voor de <rhyme label="c" type="f" corresp="#s8:l5">Vredevanen</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Van Gods Zoon, <rhyme label="d" type="m" corresp="#s8:l6">Emanuël</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Vrede op aerde! - t'Zamen <rhyme label="a" type="f">wonen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Luipaerd, Wolf, en Geit, en <rhyme label="b" type="m">Lam</rhyme>: -</l>
        <l id="s9:l3" met="4" type="+-">Nu verkeeren Japhets <rhyme label="a" type="f" corresp="#s9:l1">Zonen</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Met het Kroost van <rhyme label="b" type="m" corresp="#s9:l2">Abraham</rhyme>. -</l>
        <l id="s9:l5" met="4" type="+-">Liefde zal de Tweedracht <rhyme label="c" type="f">smoren</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Daer de Vriendschap rozen <rhyme label="d" type="m">baert</rhyme>: -</l>
        <l id="s9:l7" met="4" type="+-">Vrolijk juichen de <rhyme label="c" type="f" corresp="#s9:l5">Eng'len-choren</rhyme>:</l>
        <l id="s9:l8" met="4" type="+-">Hallelujah! - Vrede op <rhyme label="d" type="m" corresp="#s9:l6">aerd'</rhyme>! -</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">God schept in den mensch <rhyme label="a" type="f">behagen</rhyme>! -</l>
        <l id="s10:l2" met="4" type="+-">Van geen vloed, die 't al <rhyme label="b" type="m">versmoord</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Wordt, gelijk in Noächs <rhyme label="a" type="f" corresp="#s10:l1">dagen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Nu op aerde meer <rhyme label="b" type="m" corresp="#s10:l2">gehoord</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Wijkt nu, <rhyme label="c" type="f">schaduw-offeraren</rhyme>!</l>
        <l id="s10:l6" met="4" type="+-">Var, en rund, en bok, en <rhyme label="d" type="m">ram</rhyme>:</l>
        <l id="s10:l7" met="4" type="+-">Jesus komt. - Wijkt <rhyme label="c" type="f" corresp="#s10:l5">feestgebaren</rhyme>! -</l>
        <l id="s10:l8" met="4" type="+-">Offeraer en <rhyme label="d" type="m" corresp="#s10:l6">Offerlam</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">God schept in den mensch <rhyme label="a" type="f">behagen</rhyme>! -</l>
        <l id="s11:l2" met="4" type="+-">'t Godsvolk heet nu <rhyme label="b" type="m">Chephsiba</rhyme>:</l>
        <l id="s11:l3" met="4" type="+-">'t Heilkleed wordt alöm <rhyme label="a" type="f" corresp="#s11:l1">gedragen</rhyme>;</l>
        <l id="s11:l4" met="4" type="+-">Jesus komt in <rhyme label="b" type="m" corresp="#s11:l2">Efrata</rhyme>! -</l>
        <l id="s11:l5" met="4" type="+-">Nu tot eer van God te <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Is des Christens bede en <rhyme label="d" type="m">wensch</rhyme>:</l>
        <l id="s11:l7" met="4" type="+-">'t Serafslied is <rhyme label="c" type="f" corresp="#s11:l5">aengeheven</rhyme>:</l>
        <l id="s11:l8" met="4" type="+-">Welbehagen in den <rhyme label="d" type="m" corresp="#s11:l6">mensch</rhyme>! -</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Hemeltonen! - <rhyme label="a" type="f">Eng'lentalen</rhyme>! -</l>
        <l id="s12:l2" met="4" type="+-">Luister, zonder <rhyme label="b" type="m">wedergaê</rhyme>! -</l>
        <l id="s12:l3" met="4" type="+-">'t Serafslied rolt door de <rhyme label="a" type="f" corresp="#s12:l1">dalen</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Van het vruchtbare <rhyme label="b" type="m" corresp="#s12:l2">Efrata</rhyme>. -</l>
        <l id="s12:l5" met="4" type="+-">‘Eer zij God'! - De vreê zal <rhyme label="c" type="f">dagen</rhyme>: -</l>
        <l id="s12:l6" met="4" type="+-">'t Heil der aerd': - der Eng'len <rhyme label="d" type="m">wensch</rhyme>: -</l>
        <l id="s12:l7" met="4" type="+-">God schept in den mensch <rhyme label="c" type="f" corresp="#s12:l5">behagen</rhyme>: -</l>
        <l id="s12:l8" met="4" type="+-">Hallelujah! - God wordt <rhyme label="d" type="m" corresp="#s12:l6">mensch</rhyme>!’ -</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Komt dan, mijn <rhyme label="a" type="f">Natuurgenoten</rhyme>!</l>
        <l id="s13:l2" met="4" type="+-">Staem'len wij de Serafs <rhyme label="b" type="m">na</rhyme>:</l>
        <l id="s13:l3" met="4" type="+-">Helpt jehova's roem <rhyme label="a" type="f" corresp="#s13:l1">vergroten</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">God verschijnt in <rhyme label="b" type="m" corresp="#s13:l2">Efrata</rhyme>. -</l>
        <l id="s13:l5" met="4" type="+-">Hoort de blijde <rhyme label="c" type="f">Hemellingen</rhyme>!</l>
        <l id="s13:l6" met="4" type="+-">(Komt vervangen wij dien <rhyme label="d" type="m">toon</rhyme>;)</l>
        <l id="s13:l7" met="4" type="+-">Vrolijk Hallelujah <rhyme label="c" type="f" corresp="#s13:l5">zingen</rhyme>.</l>
        <l id="s13:l8" met="4" type="+-">Jesus komt; Gods groote <rhyme label="d" type="m" corresp="#s13:l6">Zoon</rhyme>. -</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">In uw grootsche <rhyme label="a" type="f">hemelwoning</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Zij U hulde en eer <rhyme label="b" type="m">geboôn</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Gunstrijk Vader! - God en <rhyme label="a" type="f" corresp="#s14:l1">Koning</rhyme>! -</l>
        <l id="s14:l4" met="4" type="+-">Om het schenken van dien <rhyme label="b" type="m" corresp="#s14:l2">Zoon</rhyme>. -</l>
        <l id="s14:l5" met="4" type="+-">'t Loflied rolde in Bethlems <rhyme label="c" type="f">velden</rhyme>:</l>
        <l id="s14:l6" met="4" type="+-">God bracht vrede op aerde <rhyme label="d" type="m">weêr</rhyme>. -</l>
        <l id="s14:l7" met="4" type="+-">'t Gantsch Heeläl zal 't eeuwig <rhyme label="c" type="f" corresp="#s14:l5">melden</rhyme>,</l>
        <l id="s14:l8" met="4" type="+-">'t Zingt dees Lofzang keer op <rhyme label="d" type="m" corresp="#s14:l6">keer</rhyme>. -</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Juich, op dezen dag der <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Seraf! - Sterfling! - Hemel! - <rhyme label="b" type="m">Aerd'</rhyme>! -</l>
        <l id="s15:l3" met="4" type="+-">God schept in den mensch <rhyme label="a" type="f" corresp="#s15:l1">behagen</rhyme>. -</l>
        <l id="s15:l4" met="4" type="+-">'t Donkere is nu <rhyme label="b" type="m" corresp="#s15:l2">opgeklaerd</rhyme>. -</l>
        <l id="s15:l5" met="4" type="+-">Gods belofte is waer <rhyme label="c" type="f">bevonden</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">In het need'rige <rhyme label="d" type="m">Efrata</rhyme>.</l>
        <l id="s15:l7" met="4" type="+-">Vrolijk juichen, harten, <rhyme label="c" type="f" corresp="#s15:l5">monden</rhyme>,</l>
        <l id="s15:l8" met="4" type="+-">Eindeloos <rhyme label="d" type="m" corresp="#s15:l6">Hallelujah</rhyme>! -</l>
      </lg>
    </lg>
  </text>
</song>
