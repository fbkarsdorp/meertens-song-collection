  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Liefde! die in vremder <rhyme label="a" type="m">nood</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">U zelven hebt <rhyme label="b" type="m">gestort</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En daar door hebt den eeuw'gen <rhyme label="a" type="m" corresp="#s1:l1">dood</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Den prikkel <rhyme label="b" type="m" corresp="#s1:l2">afgekort</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy zien ons door uw <rhyme label="a" type="m">arbeids-sweet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Het leeven ook <rhyme label="b" type="m">verwekt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En dat g' ons door uw bitter <rhyme label="a" type="m" corresp="#s2:l1">leed</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Uit alle lyden <rhyme label="b" type="m" corresp="#s2:l2">trekt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dat Gy dus onze Borge <rhyme label="a" type="m">zyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zegt licht'lyk yder <rhyme label="b" type="m">man</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En neemt, zo als 't de mond <rhyme label="a" type="m" corresp="#s3:l1">belydt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">U tot Verzoener <rhyme label="b" type="m" corresp="#s3:l2">aan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Edog, hoe weinig is 't <rhyme label="a" type="m">getal</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Des in het hert <rhyme label="b" type="m">gewis</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En dat 'er niemant erven <rhyme label="a" type="m" corresp="#s4:l1">zal</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die niet gestorven <rhyme label="b" type="m" corresp="#s4:l2">is</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Zo geef dan 't Woord des kruices <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">By yder die het <rhyme label="b" type="m">hoort</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat zulks het hert doordringt met <rhyme label="a" type="m" corresp="#s5:l1">macht</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En 't oor aan 't kruis <rhyme label="b" type="m" corresp="#s5:l2">doorboort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Want yder dit voor zeeker <rhyme label="a" type="m">weet'</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat Gy ter zelver <rhyme label="b" type="m">tyd</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Een Heiland zyt voor 's <rhyme label="a" type="m" corresp="#s6:l1">doodes-beet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En onze <rhyme label="b" type="m" corresp="#s6:l2">heiligheit</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Kom, buig dan onz' hoogmoedig' <rhyme label="a" type="m">aart</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In diepe armoê <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Waar in uw bloed zich <rhyme label="a" type="m" corresp="#s7:l1">openbaart</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En dat Gy wordt onz' <rhyme label="b" type="m" corresp="#s7:l2">Heer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gy die nog in den laatsten <rhyme label="a" type="m">nacht</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Eer U de Vyand <rhyme label="b" type="m">vond</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Uw' Kerk hebt van der <rhyme label="a" type="m" corresp="#s8:l1">liefde-kracht</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Gepreêkt met <rhyme label="b" type="m" corresp="#s8:l2">Stervens-mond</rhyme>:</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Erinner uwe kleine <rhyme label="a" type="m">Schaar</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Die hier zo ligt zich <rhyme label="b" type="m">scheidt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dat uwe laatste zorge <rhyme label="a" type="m" corresp="#s9:l1">waar</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Der Broed'ren <rhyme label="b" type="m" corresp="#s9:l2">eenigheit</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Gy, die om onze <rhyme label="a" type="m">zaaligheit</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Zo bloed'gen arbeid <rhyme label="b" type="m">had</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En door der traanen bange <rhyme label="a" type="m" corresp="#s10:l1">stryd</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Des vloeks geweld <rhyme label="b" type="m" corresp="#s10:l2">vertrad</rhyme>:</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Verwek dog onzen traagen <rhyme label="a" type="m">zin</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Die niets van arbeid <rhyme label="b" type="m">weet</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En voer ons uit de laauwheit <rhyme label="a" type="m" corresp="#s11:l1">in</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Tot uwen <rhyme label="b" type="m" corresp="#s11:l2">arbeids-zweet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Was tot uw' kroon en <rhyme label="a" type="m">heerlykheit</rhyme></l>
        <l id="s12:l2" met="3" type="-+">De smaad de regte <rhyme label="b" type="m">weg</rhyme>;</l>
        <l id="s12:l3" met="4" type="-+">Dat ook uw Volk dus zy <rhyme label="a" type="m" corresp="#s12:l1">bereidt</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Te gaan langs deezen <rhyme label="b" type="m" corresp="#s12:l2">steg</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">En daar, o Heer', uw' <rhyme label="a" type="m">needrigheit</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Aan 't Kruis U binden <rhyme label="b" type="m">kan</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">Zo hecht dog onze <rhyme label="a" type="m" corresp="#s13:l1">Eigenheit</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Ook aan uw' Kruis-paal <rhyme label="b" type="m" corresp="#s13:l2">aan</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Heeft eindlyk U de <rhyme label="a" type="m">Liefde-gloed</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Gevoert in <rhyme label="b" type="m">stervens-nood</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Zo maak ons in der <rhyme label="a" type="m" corresp="#s14:l1">liefde-vloed</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Getrouw tot in den <rhyme label="b" type="m" corresp="#s14:l2">dood</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Ley dus ons langs uw' <rhyme label="a" type="m">lydens-baan</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Daar men uw kruis <rhyme label="b" type="m">bemint</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Wyl daar slegs met U heerschen <rhyme label="a" type="m" corresp="#s15:l1">kan</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Die hier meê <rhyme label="b" type="m" corresp="#s15:l2">overwint</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
