    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Zaligh’ Hope tot Godts <rhyme label="a" type="m">Zael</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Om daer te raecken also <rhyme label="b" type="f">binnen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Dat wy dan sien des Hemels <rhyme label="a" type="m" corresp="#s1:l1">strael</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Om dat Godt is in onse <rhyme label="b" type="f" corresp="#s1:l2">zinnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dat wy be-yv’ren Godes <rhyme label="a" type="m">wet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Tot Hope van het eeuwigh <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Soo is ons trachten wel <rhyme label="a" type="m" corresp="#s2:l1">gheset</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Als wy daer stadighlijck in <rhyme label="b" type="f" corresp="#s2:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En dat onse ghedachten <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Om onsen Godt wel te <rhyme label="b" type="f">behaghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En dat ons leven is soo <rhyme label="a" type="m" corresp="#s3:l1">fijn</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat wy onse sonden <rhyme label="b" type="f" corresp="#s3:l2">beklaghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Van ons loopen de woeste <rhyme label="a" type="m">baen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Van onse veel benaeuwde <rhyme label="b" type="f">zonden</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Laet ons die nu te recht af <rhyme label="a" type="m" corresp="#s4:l1">gaen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat wy dan zijn so los <rhyme label="b" type="f" corresp="#s4:l2">ghebonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dat ons Hope tot Godt dan <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Om by hem in den Troon te <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En dat alsoo het vierde <rhyme label="a" type="m" corresp="#s5:l1">zaedt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Mach in ons zijn van Godt <rhyme label="b" type="f" corresp="#s5:l2">ghepresen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nu wel aen vrienden al te <rhyme label="a" type="m">saem</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Laet ons op hope tot Godt <rhyme label="b" type="f">bouwen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Tot uytbreydingh van Godes <rhyme label="a" type="m" corresp="#s6:l1">Naem</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat wy op hem alsoo <rhyme label="b" type="f" corresp="#s6:l2">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dat hy ons gheven sal zijn <rhyme label="a" type="m">Rijck</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Verciert dan boven alle <rhyme label="b" type="f">Hoven</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Daer is dan nergens zijns <rhyme label="a" type="m" corresp="#s7:l1">ghelijck</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Laet ons Godt met de Fama <rhyme label="b" type="f" corresp="#s7:l2">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
