<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>182563</id>
    <date>
      <year-start>1800</year-start>
      <year-end>1800</year-end>
    </date>
    <tags/>
    <melody>Van de petjes</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ach wat is de mode <rhyme label="a" type="m">net</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Van de Petjes, van de <rhyme label="b" type="f">Petjes</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ach wat is de mode <rhyme label="a" type="m" corresp="#s1:l1">net</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Van de Petjes of <rhyme label="a" type="m" corresp="#s1:l1">Casket</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Ik wil geenen Hoed meer <rhyme label="c" type="f">dragen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Want de mode is <rhyme label="d" type="m">gemeen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Kromme rechte groot en <rhyme label="d" type="m" corresp="#s1:l6">kleyn</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Met een Petje proper <rhyme label="d" type="m" corresp="#s1:l6">zyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die geen geld heeft voor een <rhyme label="a" type="m">hoed</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dragen Petjes, dragen <rhyme label="b" type="f">Petjes</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die geen geld heeft voor een <rhyme label="a" type="m" corresp="#s2:l1">hoed</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Draagt een Petje dat staat <rhyme label="a" type="m" corresp="#s2:l1">goed</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Rood of groen met geele <rhyme label="c" type="f">linten</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Afgeboord wat schoone <rhyme label="d" type="m">dragt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">'t ls een goede koope <rhyme label="d" type="m" corresp="#s2:l6">pragt</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Wie had zo een kop <rhyme label="d" type="m" corresp="#s2:l6">verwagt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Schoon ik alle mode <rhyme label="a" type="m">prys</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Maar de Petjes, maar de <rhyme label="b" type="f">Petjes</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Is het beste dat ik <rhyme label="a" type="m" corresp="#s3:l1">prys</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">'t Is gemakkelyk op de <rhyme label="a" type="m" corresp="#s3:l1">rys</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Voor die na de kou niet <rhyme label="c" type="f">vragen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Zyn de Petjes wonder <rhyme label="d" type="m">goed</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Al zien de ooren rood als <rhyme label="d" type="m" corresp="#s3:l6">bloed</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Dat de mode geen pyn aan <rhyme label="d" type="m" corresp="#s3:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Voor de regen voor de <rhyme label="a" type="m">zon</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Zyn de Petjes, zyn de <rhyme label="b" type="f">Petjes</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Voor de regen en de <rhyme label="a" type="m" corresp="#s4:l1">zon</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Zyn de Petjes ligt en <rhyme label="a" type="m" corresp="#s4:l1">bon</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Slaat de regen in u <rhyme label="c" type="f">oogen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Schynt de zon wat al te <rhyme label="d" type="m">heet</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Trekt de klep 't is gouw <rhyme label="d" type="m" corresp="#s4:l6">gereed</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">'t Is remedie voor het <rhyme label="d" type="m" corresp="#s4:l6">zweet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als gy s' avonds wyt moet <rhyme label="a" type="m">gaan</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Aan de Petjes, aan de <rhyme label="b" type="f">Petjes</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Zyn twee oore lappen <rhyme label="a" type="m" corresp="#s5:l1">aan</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">die juist boven de ooren <rhyme label="a" type="m" corresp="#s5:l1">staan</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Dan kan u geen kogel <rhyme label="c" type="f">raken</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Uwen kop is wel <rhyme label="d" type="m">bewaart</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Jongeren hebbe wat geld <rhyme label="d" type="m" corresp="#s5:l6">vergaard</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Koop een Petje niet en <rhyme label="d" type="m" corresp="#s5:l6">spaard</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Om te spreeken een dogter <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Zyn de Petjes, zyn de <rhyme label="b" type="f">Petjes</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Goed om digt by een te <rhyme label="a" type="m" corresp="#s6:l1">staan'</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Wilt eens kussen 't is gouw <rhyme label="a" type="m" corresp="#s6:l1">gedaan</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Gy en zult u lief niet <rhyme label="c" type="f">raken</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Met de kanten van u <rhyme label="d" type="m">hoed</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Ja een Pet is wonder <rhyme label="d" type="m" corresp="#s6:l6">goed</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Als g' een keer purgeeren <rhyme label="d" type="m" corresp="#s6:l6">moet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">By de Kinderen groot en <rhyme label="a" type="m">klyn</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Dat de Perjes, dat de <rhyme label="b" type="f">Petjes</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dienstig voor een valhoed <rhyme label="a" type="m" corresp="#s7:l1">zyn</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En die gaarn gaan op de <rhyme label="a" type="m" corresp="#s7:l1">tryn</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Om te dansen de <rhyme label="c" type="f">Labbertanje</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Of iets 't geen u meer <rhyme label="d" type="m">behaagd</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Meisjens zynde met min <rhyme label="d" type="m" corresp="#s7:l6">geplaagd</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Neemt 'er een die 't Petje <rhyme label="d" type="m" corresp="#s7:l6">draagt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">De nieuwe mode staat ieder <rhyme label="a" type="m">goed</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Van de Petjes, van de <rhyme label="b" type="f">Petjes</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Tikkenhaan of ronde <rhyme label="a" type="m" corresp="#s8:l1">hoed</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Voor de Petjes buigen <rhyme label="a" type="m" corresp="#s8:l1">moet</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Spreek my van geen <rhyme label="c" type="f">Suweroenen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Want die zyn te zwaar op t <rhyme label="d" type="m">hoof</rhyme>[...]</l>
        <l id="s8:l7" met="4" type="+-">Veel te lang en al te <rhyme label="d" type="m" corresp="#s8:l6">groot</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Zulke mode draag ik <rhyme label="d" type="m" corresp="#s8:l6">nooit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
