    <tags/>
    <melody>Il est vrai je le confesse</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">’K En heb ‘t noch niet <rhyme label="a" type="f">ghegeven</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Sprack den Heere <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Een reyn hert om te <rhyme label="a" type="f" corresp="#s1:l1">beleven</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">‘t Geen ick u <rhyme label="b" type="m" corresp="#s1:l2">gebiet</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Maer ick sal na dese <rhyme label="c" type="f">tijden</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Van u en u <rhyme label="d" type="m">zaet</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">‘t Hert inwendigh soo <rhyme label="c" type="f" corresp="#s1:l5">besnijden</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Dattet my <rhyme label="d" type="m" corresp="#s1:l6">verstaet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Oft ghy schoon uyt eygen <rhyme label="a" type="f">crachten</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Hier en daer <rhyme label="b" type="m">begint</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Werck ick niet in u <rhyme label="a" type="f" corresp="#s2:l1">ghedachten</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Ghy blijft even <rhyme label="b" type="m" corresp="#s2:l2">blint</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Hooge wijsheyt, cloecke <rhyme label="c" type="f">sinnen</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Schaden buyten <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">d’Heyd’nen gingen ‘t wel <rhyme label="c" type="f" corresp="#s2:l5">beginnen</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Maer waer bleven <rhyme label="d" type="m" corresp="#s2:l6">sy</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">‘t Steenen hert sal ick <rhyme label="a" type="f">verkneden</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">En vhermaken ‘t <rhyme label="b" type="m">nieuw</rhyme>’,</l>
        <l id="s3:l3" met="4" type="+-">Dat ghy met <rhyme label="a" type="f" corresp="#s3:l1">ghewillicheden</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Werelt seght <rhyme label="b" type="m" corresp="#s3:l2">Adieu</rhyme>!</l>
        <l id="s3:l5" met="4" type="+-">Anders of ghy schoon u <rhyme label="c" type="f">ooren</rhyme></l>
        <l id="s3:l6" met="2" type="+-">Tot mijn Leere <rhyme label="d" type="m">went</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">’t Hert en can doch niet <rhyme label="c" type="f" corresp="#s3:l5">bespooren</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">‘t Geen het niet en <rhyme label="d" type="m" corresp="#s3:l6">kent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vwen mont seyt ick nga <rhyme label="a" type="f">henen</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Maer u daet seyt <rhyme label="b" type="m">neen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Doet ghy wat, ‘t is sonder <rhyme label="a" type="f" corresp="#s4:l1">meenen</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Lust en isser <rhyme label="b" type="m" corresp="#s4:l2">geen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Wat wilt ghy ‘t doch veel <rhyme label="c" type="f">bedecken</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Met een schoonen <rhyme label="d" type="m">schijn</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">d’Aenghebooren Luypaerts <rhyme label="c" type="f" corresp="#s4:l5">vlecken</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Noch inwendigh <rhyme label="d" type="m" corresp="#s4:l6">sijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Licht van buyten en van <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Geeft verstant en <rhyme label="b" type="m">cracht</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Maer ‘t verblinde hert en <rhyme label="a" type="f" corresp="#s5:l1">sinnen</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Is de dach als <rhyme label="b" type="m" corresp="#s5:l2">nacht</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Hier en baet gheen <rhyme label="c" type="f">murmereren</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">‘t Wist noch hooch <rhyme label="d" type="m">dispuyt</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Ghy moet van den Vader <rhyme label="c" type="f" corresp="#s5:l5">leeren</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">‘t Geestelijck <rhyme label="d" type="m" corresp="#s5:l6">gheluyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Petrus had sijn <rhyme label="a" type="f">onder-richten</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Niet van vlees en <rhyme label="b" type="m">bloet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Maer een Goddelijck <rhyme label="a" type="f" corresp="#s6:l1">inlichten</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Leerde sijn <rhyme label="b" type="m" corresp="#s6:l2">ghemoet</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">‘t Sy inwendigh, ‘t sy door <rhyme label="c" type="f">boden</rhyme>,</l>
        <l id="s6:l6" met="2" type="+-">Godt door sijnen <rhyme label="d" type="m">Geest</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Comt de ziele lieff’lijck <rhyme label="c" type="f" corresp="#s6:l5">nooden</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">Tot de Bruylofts <rhyme label="d" type="m" corresp="#s6:l6">Feest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Soo sy dan de <rhyme label="a" type="f">creature</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Boven Godt <rhyme label="b" type="m">bemint</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Sluyt ‘s haer selven toe de <rhyme label="a" type="f" corresp="#s7:l1">deure</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">En blijft aertsch <rhyme label="b" type="m" corresp="#s7:l2">ghesint</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Maer laet sy haer <rhyme label="c" type="f">onderwijsen</rhyme>,</l>
        <l id="s7:l6" met="2" type="+-">Van de wijsheyt <rhyme label="d" type="m">stil</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Salse Geestelijck <rhyme label="c" type="f" corresp="#s7:l5">verrysen</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Door een goede <rhyme label="d" type="m" corresp="#s7:l6">wil</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Kennis doet de ziele <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Naer het rechte <rhyme label="b" type="m">endt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Niemant can de Peerel <rhyme label="a" type="f" corresp="#s8:l1">koopen</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Diese niet en <rhyme label="b" type="m" corresp="#s8:l2">kent</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">’t Minder heeft het hert <rhyme label="c" type="f">beseten</rhyme>,</l>
        <l id="s8:l6" met="2" type="+-">Daermen kiest het <rhyme label="d" type="m">beelt</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Maer dit onderscheyt te <rhyme label="c" type="f" corresp="#s8:l5">weten</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">Wort van Godt <rhyme label="d" type="m" corresp="#s8:l6">gheteelt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Godt den Autheur van het <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">Opent het <rhyme label="b" type="m">ghesicht</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Treckt de ziel door het <rhyme label="a" type="f" corresp="#s9:l1">ingeven</rhyme></l>
        <l id="s9:l4" met="3" type="+-">Van een hemelsch <rhyme label="b" type="m" corresp="#s9:l2">licht</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Hierom ist dat elck van <rhyme label="c" type="f">boven</rhyme>,</l>
        <l id="s9:l6" met="2" type="+-">Dient geleert te <rhyme label="d" type="m">sijn</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Sal hy recht den vader <rhyme label="c" type="f" corresp="#s9:l5">loven</rhyme>,</l>
        <l id="s9:l8" met="3" type="+-">Als een <rhyme label="d" type="m" corresp="#s9:l6">Medecijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Die aertsch is soeckt aertsche <rhyme label="a" type="f">saken</rhyme>,</l>
        <l id="s10:l2" met="3" type="+-">Die van boven <rhyme label="b" type="m">is</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Can hem daer niet in <rhyme label="a" type="f" corresp="#s10:l1">vermaken</rhyme></l>
        <l id="s10:l4" met="3" type="+-">Sijn <rhyme label="b" type="m" corresp="#s10:l2">ghetuyghenis</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Wijst hem tot een Hemelsch <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s10:l6" met="2" type="+-">Dats sijn lusten <rhyme label="d" type="m">vreught</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Hier door wert de ziel <rhyme label="c" type="f" corresp="#s10:l5">ghenesen</rhyme>,</l>
        <l id="s10:l8" met="3" type="+-">In volmaeckte <rhyme label="d" type="m" corresp="#s10:l6">deught</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
