  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ONgeluckigh mensch <rhyme label="a" type="f">geboren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ziel, berooft van t'hooghste <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die voor eeuwigheydt <rhyme label="a" type="f" corresp="#s1:l1">verloren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">In de helle lyden <rhyme label="b" type="m" corresp="#s1:l2">moet</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Seght het my, seght het <rhyme label="c" type="m">my</rhyme>;</l>
        <l id="s1:l6" met="4" type="+-">Wat voor pynen lyde <rhyme label="c" type="m" corresp="#s1:l5">gy</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ah! moet ick u <rhyme label="a" type="f">uyt-gaen-leggen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">In wat smerten wy hier <rhyme label="b" type="m">syn</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Moet ick u in't lanck gaen <rhyme label="a" type="f" corresp="#s2:l1">seggen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Sondaers eynde, ende <rhyme label="b" type="m" corresp="#s2:l2">pyn</rhyme>?</l>
        <l id="s2:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Aen die t'lydt, alleen <rhyme label="c" type="m" corresp="#s2:l5">bekent</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die de wereldt eertyts <rhyme label="a" type="f">eerde</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Waer is uwen luyster <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En de glori', die gy <rhyme label="a" type="f" corresp="#s3:l1">leerde</rhyme></l>
        <l id="s3:l4" met="4" type="+-">In dit ydel traenen <rhyme label="b" type="m" corresp="#s3:l2">dal</rhyme>?</l>
        <l id="s3:l5" met="4" type="+-">Seght het my, seght het <rhyme label="c" type="m">my</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">Wat voor pynen lyde <rhyme label="c" type="m" corresp="#s3:l5">gy</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ah! dien luyster is <rhyme label="a" type="f">verdwenen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Als den droom van eenen <rhyme label="b" type="m">nacht</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Naer die glori' is <rhyme label="a" type="f" corresp="#s4:l1">verschenen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Eeuwigh druck om een <rhyme label="b" type="m" corresp="#s4:l2">gedacht</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m" corresp="#s4:l5">onbekent</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wat hebt gy van al uw <rhyme label="a" type="f">spaeren</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Met soo groote <rhyme label="b" type="m">gierigheydt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Die men sagh veel goedt <rhyme label="a" type="f" corresp="#s5:l1">vergaeren</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">In soo veel <rhyme label="b" type="m" corresp="#s5:l2">sorghvuldigheydt</rhyme>?</l>
        <l id="s5:l5" met="4" type="+-">Seght het my, seght het <rhyme label="c" type="m">my</rhyme>;</l>
        <l id="s5:l6" met="4" type="+-">Wat voor pynen lyde <rhyme label="c" type="m" corresp="#s5:l5">gy</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Eeuwighlyck gebreck te <rhyme label="a" type="f">lyden</rhyme>.</l>
        <l id="s6:l2" met="4" type="+-">Is de vrucht van al myn <rhyme label="b" type="m">goedt</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Dit is alle myn <rhyme label="a" type="f" corresp="#s6:l1">verblyden</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Naer dien grooten <rhyme label="b" type="m" corresp="#s6:l2">overvloedt</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m" corresp="#s6:l5">onbekent</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Gy, die voor u <rhyme label="a" type="f">dertelheden</rhyme>.</l>
        <l id="s7:l2" met="4" type="+-">In de helsche vlammen <rhyme label="b" type="m">licht</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Voor uw' <rhyme label="a" type="f" corresp="#s7:l1">ongebondentheden</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Derven moet Godts schoon <rhyme label="b" type="m" corresp="#s7:l2">gesicht</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Seght het my, seght het <rhyme label="c" type="m">my</rhyme>;</l>
        <l id="s7:l6" met="4" type="+-">Wat voor pynen lyde <rhyme label="c" type="m" corresp="#s7:l5">gy</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ah! om een vermaeck, vol <rhyme label="a" type="f">schande</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Om de vreught van eenen <rhyme label="b" type="m">stondt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">In het eeuwigh vier ick <rhyme label="a" type="f" corresp="#s8:l1">brande</rhyme></l>
        <l id="s8:l4" met="4" type="+-">In den diepen helschen <rhyme label="b" type="m" corresp="#s8:l2">grondt</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m" corresp="#s8:l5">onbekent</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Wat lydt gy in't ander <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Voor uw' dansen, spel, en <rhyme label="b" type="m">sanck</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Als uw' tonge heeft <rhyme label="a" type="f" corresp="#s9:l1">gegeven</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Soo veel vuylen wereldts <rhyme label="b" type="m" corresp="#s9:l2">klanck</rhyme>?</l>
        <l id="s9:l5" met="4" type="+-">Seght het my, seght het <rhyme label="c" type="m">my</rhyme>;</l>
        <l id="s9:l6" met="4" type="+-">Wat voor pynen lyde <rhyme label="c" type="m" corresp="#s9:l5">gy</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Al myn klaegen, al myn <rhyme label="a" type="f">kermen</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Thoont, eylaes, maer al te <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Sonder hope van <rhyme label="a" type="f" corresp="#s10:l1">ontfermen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Wat ick lyde duysent <rhyme label="b" type="m" corresp="#s10:l2">keer</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m" corresp="#s10:l5">onbekent</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Voor uw' achterklap, en <rhyme label="a" type="f">sweeren</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Voor uw' vloecken tegen <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">En voor alle die <rhyme label="a" type="f" corresp="#s11:l1">choleeren</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Wat geniet gy voor een <rhyme label="b" type="m" corresp="#s11:l2">lot</rhyme>?</l>
        <l id="s11:l5" met="4" type="+-">Seght het my, seght het <rhyme label="c" type="m">my</rhyme>;</l>
        <l id="s11:l6" met="4" type="+-">Wat voor pynen lyde <rhyme label="c" type="m" corresp="#s11:l5">gy</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Myne tonge wordt <rhyme label="a" type="f">door-droncken</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Van het peck in desen <rhyme label="b" type="m">poel</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">En door boort met solfer <rhyme label="a" type="f" corresp="#s12:l1">voncken</rhyme></l>
        <l id="s12:l4" met="4" type="+-">By de vlammen, die ick <rhyme label="b" type="m" corresp="#s12:l2">voel</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m" corresp="#s12:l5">onbekent</rhyme>!</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Gy, die met de deught te <rhyme label="a" type="f">haeten</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Syt soo veel verdiensten <rhyme label="b" type="m">quyt</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">En hebt soo veel goedt <rhyme label="a" type="f" corresp="#s13:l1">gelaeten</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Door t'verquisten van den <rhyme label="b" type="m" corresp="#s13:l2">tydt</rhyme>;</l>
        <l id="s13:l5" met="4" type="+-">Seght het my, seght het <rhyme label="c" type="m">my</rhyme>;</l>
        <l id="s13:l6" met="4" type="+-">Wat voor pynen lyde <rhyme label="c" type="m" corresp="#s13:l5">gy</rhyme>?</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">O vervloeckte ledig' <rhyme label="a" type="f">daegen</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">En soo veel verloren <rhyme label="b" type="m">tydt</rhyme>!</l>
        <l id="s14:l3" met="4" type="+-">Ah! hoe doet hy my <rhyme label="a" type="f" corresp="#s14:l1">beklaegen</rhyme></l>
        <l id="s14:l4" met="4" type="+-">Al t'verlies van <rhyme label="b" type="m" corresp="#s14:l2">Ziel-profyt</rhyme>!</l>
        <l id="s14:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m" corresp="#s14:l5">onbekent</rhyme>!</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Gy, die soo veel heylig' <rhyme label="a" type="f">feesten</rhyme></l>
        <l id="s15:l2" met="4" type="+-">In de herberg' <rhyme label="b" type="m">over-bracht</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">En daer waert gelyck de <rhyme label="a" type="f" corresp="#s15:l1">beesten</rhyme></l>
        <l id="s15:l4" met="4" type="+-">In het drincken dagh, en <rhyme label="b" type="m" corresp="#s15:l2">nacht</rhyme>;</l>
        <l id="s15:l5" met="4" type="+-">Seght het my, seght het <rhyme label="c" type="m">my</rhyme>;</l>
        <l id="s15:l6" met="4" type="+-">Wat voor pynen lyde <rhyme label="c" type="m" corresp="#s15:l5">gy</rhyme>?</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Ah! nu voel ick eeuwigh <rhyme label="a" type="f">praemen</rhyme></l>
        <l id="s16:l2" met="4" type="+-">My een dulle hongers <rhyme label="b" type="m">pyn</rhyme>;</l>
        <l id="s16:l3" met="4" type="+-">Eeuwig' dorst lyd' ick te <rhyme label="a" type="f" corresp="#s16:l1">saemen</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Sonder oyt gelaeft te <rhyme label="b" type="m" corresp="#s16:l2">syn</rhyme>:</l>
        <l id="s16:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s16:l6" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m" corresp="#s16:l5">onbekent</rhyme>!</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Gy, die wy vol vraeke <rhyme label="a" type="f">saegen</rhyme></l>
        <l id="s17:l2" met="4" type="+-">Met een onversoent <rhyme label="b" type="m">gemoedt</rhyme></l>
        <l id="s17:l3" met="4" type="+-">Maet, en nyt t'herte <rhyme label="a" type="f" corresp="#s17:l1">draegen</rhyme>,</l>
        <l id="s17:l4" met="4" type="+-">Wat verkoelt uw' hitsigh <rhyme label="b" type="m" corresp="#s17:l2">bloedt</rhyme>?</l>
        <l id="s17:l5" met="4" type="+-">Seght het my, seght het <rhyme label="c" type="m">my</rhyme>;</l>
        <l id="s17:l6" met="4" type="+-">Wat voor pynen lyde <rhyme label="c" type="m" corresp="#s17:l5">gy</rhyme>?</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Al, die geenen peys <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s18:l2" met="4" type="+-">Doen in d'helle door <rhyme label="b" type="m">verwyt</rhyme></l>
        <l id="s18:l3" met="4" type="+-">Oock malkanderen van <rhyme label="a" type="f" corresp="#s18:l1">binnen</rhyme></l>
        <l id="s18:l4" met="4" type="+-">Bersten door een eeuwig' <rhyme label="b" type="m" corresp="#s18:l2">spyt</rhyme>.</l>
        <l id="s18:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s18:l6" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m" corresp="#s18:l5">onbekent</rhyme>!</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Mensch, en volght dan noyt dees <rhyme label="a" type="f">hoopen</rhyme>,</l>
        <l id="s19:l2" met="4" type="+-">Die naer dese schrooming' <rhyme label="b" type="m">hel</rhyme></l>
        <l id="s19:l3" met="4" type="+-">In soo groote blintheydt <rhyme label="a" type="f" corresp="#s19:l1">loopen</rhyme>,</l>
        <l id="s19:l4" met="4" type="+-">En bedenckt dit altydt <rhyme label="b" type="m" corresp="#s19:l2">wel</rhyme>.</l>
        <l id="s19:l5" met="4" type="+-">Ah torment! ah <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s19:l6" met="4" type="+-">Aen de wereldt <rhyme label="c" type="m" corresp="#s19:l5">onbekent</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
