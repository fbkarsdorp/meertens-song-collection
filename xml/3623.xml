  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">GODT verhoor' v' gebedt dat ghy <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">In uwen swaren <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s1:l3" met="5" type="+-">Godt Iacobs neem' v in sijn <rhyme label="a" type="m" corresp="#s1:l1">behoedt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In den teghenspoedt <rhyme label="b" type="m" corresp="#s1:l2">groot</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">VVt den hemel sie hy v' <rhyme label="c" type="f">lyden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">End help' v oock seer <rhyme label="d" type="f">krachtigh</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Van Zion den bergh t'allen <rhyme label="c" type="f" corresp="#s1:l5">tyden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Sterck' v sijn handt seer <rhyme label="d" type="f" corresp="#s1:l6">machtigh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Vwes diensts end der offranden <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ghedencke de Heer <rhyme label="b" type="m">myn</rhyme>,</l>
        <l id="s2:l3" met="5" type="+-">Dat v' offranden voor sijnen <rhyme label="a" type="m" corresp="#s2:l1">throon</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Haest asschen moghen <rhyme label="b" type="m" corresp="#s2:l2">sijn</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Hy maeckt voorspoedigh uwe <rhyme label="c" type="f">dinghen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Nae v' beghęerte <rhyme label="d" type="f">reyne</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Hy wilt v' voornemen <rhyme label="c" type="f" corresp="#s2:l5">volbringhen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Groot end kleyn in't <rhyme label="d" type="f" corresp="#s2:l6">ghemeyne</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Godt doe dat ghy hem bidt <rhyme label="a" type="m">goedertier</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Op dat wy <rhyme label="b" type="m">onbeswaert</rhyme>,</l>
        <l id="s3:l3" met="5" type="+-">Eenmael oprechten onse <rhyme label="a" type="m" corresp="#s3:l1">banier</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">In Godts naem wydt <rhyme label="b" type="m" corresp="#s3:l2">vermaert</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">End segghen: Godt wt sijn woenst' <rhyme label="c" type="f">hilligh</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wilt sijnen Koningh <rhyme label="d" type="f">krachtigh</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Verhooren end helpen <rhyme label="c" type="f" corresp="#s3:l5">goetwilligh</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Met sijner handt <rhyme label="d" type="f" corresp="#s3:l6">almachtigh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Ons vianden staen seer vast <rhyme label="a" type="m">ghebauwt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Op waghen end' op <rhyme label="b" type="m">pęerdt</rhyme>,</l>
        <l id="s4:l3" met="5" type="+-">Maer op Godts kracht hebben wy <rhyme label="a" type="m" corresp="#s4:l1">vertrauwt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In't lyden dat ons <rhyme label="b" type="m" corresp="#s4:l2">dęert</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Oock is haer groote macht <rhyme label="c" type="f">ghekommen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Tot niet, Sy is <rhyme label="d" type="f">verloren</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Maer ons kracht is hoogher <rhyme label="c" type="f" corresp="#s4:l5">gheklommen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dan sy was oyt te <rhyme label="d" type="f" corresp="#s4:l6">voren</rhyme>.</l>
      </lg>
    </lg>
  </text>
