  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Bruydegom <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Aen 's Vaders <rhyme label="b" type="m">rechterhandt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Mijn welvaert troost en <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">V moet ick loven, <rhyme label="b" type="m" corresp="#s1:l2">want</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Hadt ghy my gheen <rhyme label="b" type="m" corresp="#s1:l2">bystant</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In mijnen noot <rhyme label="c" type="m">gedaen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Als kranck ghebou op 't <rhyme label="b" type="m" corresp="#s1:l2">zant</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Waer ick langhe <rhyme label="c" type="m" corresp="#s1:l6">vergaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick lagh in swaer <rhyme label="a" type="f">gebreken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">In 's doodts banden <rhyme label="b" type="m">verstrickt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En van Belials <rhyme label="a" type="f" corresp="#s2:l1">beken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Benout en seer <rhyme label="b" type="m" corresp="#s2:l2">verschrickt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Maer ghy hebt my <rhyme label="b" type="m" corresp="#s2:l2">verquickt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En levende <rhyme label="c" type="m">ghemaeckt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Schoon kleyders aen <rhyme label="b" type="m" corresp="#s2:l2">beschickt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Daer ick lagh doodt en <rhyme label="c" type="m" corresp="#s2:l6">naeckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy hebt my laten <rhyme label="a" type="f">smaken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">V vriendelijckheyt <rhyme label="b" type="m">soet</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Hierom sonder <rhyme label="a" type="f" corresp="#s3:l1">versaecken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ick verkondigen <rhyme label="b" type="m" corresp="#s3:l2">moet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Al uwe deughden <rhyme label="b" type="m" corresp="#s3:l2">goet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En belijden u <rhyme label="c" type="m">woordt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Voor de wereldt <rhyme label="b" type="m" corresp="#s3:l2">onvroet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Die op my is <rhyme label="c" type="m" corresp="#s3:l6">verstoort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ick Syon u <rhyme label="a" type="f">vriendinne</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ben in 'swereldt <rhyme label="b" type="m">verwaet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om dat ick u <rhyme label="a" type="f" corresp="#s4:l1">beminne</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Draeght sy my grooten <rhyme label="b" type="m" corresp="#s4:l2">haet</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Een spijtigh spreeck-woort <rhyme label="b" type="m" corresp="#s4:l2">quaet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ben ick in haren <rhyme label="c" type="m">mondt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Maer ghy my <rhyme label="b" type="m" corresp="#s4:l2">toeverlaet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Sijt mijnen vasten <rhyme label="c" type="m" corresp="#s4:l6">grondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Al ist dat ick <rhyme label="a" type="f">uytwendigh</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Al 's Wereldts vreught <rhyme label="b" type="m">aensie</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Mijn herte sucht <rhyme label="a" type="f" corresp="#s5:l1">ellendigh</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Als van haer vreught <rhyme label="b" type="m" corresp="#s5:l2">partye</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Maer daer ick in <rhyme label="b" type="m" corresp="#s5:l2">verblye</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat dunckt haer groot <rhyme label="c" type="m">abuys</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Want sy een <rhyme label="b" type="m" corresp="#s5:l2">sotternye</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Acht te wesen u <rhyme label="c" type="m" corresp="#s5:l6">kruys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sy houdt my voor een <rhyme label="a" type="f">secte</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Als of mijn wesen <rhyme label="b" type="m">haer</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Tot een verderven <rhyme label="a" type="f" corresp="#s6:l1">streckte</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Nochtans en gae ick <rhyme label="b" type="m" corresp="#s6:l2">maer</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Sonder eenigh <rhyme label="b" type="m" corresp="#s6:l2">misbaer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Payselijck uwen <rhyme label="c" type="m">ganck</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Om eens te komen <rhyme label="b" type="m" corresp="#s6:l2">daer</rhyme></l>
        <l id="s6:l8" met="3" type="-+">By u is mijn <rhyme label="c" type="m" corresp="#s6:l6">verlanck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">By u te zijn in <rhyme label="a" type="f">vreden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dat wensch ick boven <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wat maeck ick hier <rhyme label="a" type="f" corresp="#s7:l1">beneden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">In dit ellendigh <rhyme label="b" type="m" corresp="#s7:l2">dal</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Vol druck en <rhyme label="b" type="m" corresp="#s7:l2">ongheval</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Och my verlanght <rhyme label="c" type="m">wanneer</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Dat ick eens moghen <rhyme label="b" type="m" corresp="#s7:l2">sal</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">V aenschijn sien, o <rhyme label="c" type="m" corresp="#s7:l6">Heer</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">V toekomste <rhyme label="a" type="f">voorsproocken</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die sal my wesen <rhyme label="b" type="m">lief</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Maer ick houde <rhyme label="a" type="f" corresp="#s8:l1">beloken</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Vast in mijns herten <rhyme label="b" type="m" corresp="#s8:l2">brief</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Hoe dat ghelijck een <rhyme label="b" type="m" corresp="#s8:l2">dief</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Sal komen uwen <rhyme label="c" type="m">dagh</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En om ontvlieden <rhyme label="b" type="m" corresp="#s8:l2">grief</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Waerlijck sonder <rhyme label="c" type="m" corresp="#s8:l6">verdragh</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Prince van grooter <rhyme label="a" type="f">waerde</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ghy hebt my <rhyme label="b" type="m">toegeseyt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Nieuwen Hemel end' <rhyme label="a" type="f" corresp="#s9:l1">aerde</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Een schoone <rhyme label="b" type="m" corresp="#s9:l2">majesteyt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Daerom ick <rhyme label="b" type="m" corresp="#s9:l2">neerstigheyt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Moet doen in 't aerdtsche <rhyme label="c" type="m">pleyn</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Dat ghy my vindt <rhyme label="b" type="m" corresp="#s9:l2">bereyt</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Onstraffelijck en <rhyme label="c" type="m" corresp="#s9:l6">reyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
