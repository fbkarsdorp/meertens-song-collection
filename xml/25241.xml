  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoort een stem claer geeft groot <rhyme label="a" type="m">geluijt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">straff des duijsternis, sij <rhyme label="a" type="m" corresp="#s1:l1">beduijt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">laet ons veriagen alle <rhyme label="b" type="m">vaeck</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Christus vuijt den hemel <rhyme label="b" type="m" corresp="#s1:l3">genaeck</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het traech hart, vuijl, grootlick <rhyme label="a" type="m">gewondt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">laet op rijsen dees morgen <rhyme label="a" type="m" corresp="#s2:l1">stondt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">een nieu ster geeft een lichte <rhyme label="b" type="m">strael</rhyme></l>
        <l id="s2:l4" met="4" type="-+">om wech te nemen t'quaet te <rhyme label="b" type="m" corresp="#s2:l3">mael</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">T'lam wort gesonden van <rhyme label="a" type="m">boouen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">te ontslaen de scult dies <rhyme label="a" type="m" corresp="#s3:l1">behouen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">laet ons met trane al <rhyme label="b" type="m">gelijck</rhyme></l>
        <l id="s3:l4" met="4" type="-+">bidden remis, den heere <rhyme label="b" type="m" corresp="#s3:l3">rijck</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Op dat wanneer hij <rhyme label="a" type="m">andermael</rhyme></l>
        <l id="s4:l2" met="4" type="-+">verscijnen sal in werelts <rhyme label="a" type="m" corresp="#s4:l1">dael</rhyme></l>
        <l id="s4:l3" met="4" type="-+">wanneer al beeft, ons niet straff <rhyme label="b" type="m">fier</rhyme></l>
        <l id="s4:l4" met="4" type="-+">maer wil bescermen <rhyme label="b" type="m" corresp="#s4:l3">goedertier</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Loff, glorij, cracht, met alle <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s5:l2" met="4" type="-+">zij inder ewicheijt ons <rhyme label="a" type="m" corresp="#s5:l1">heer</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Godt vader, godt soon, godt geest <rhyme label="b" type="m">reijn</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Scepper, verlosser, troest <rhyme label="b" type="m" corresp="#s5:l3">gemeijn</rhyme></l>
      </lg>
    </lg>
  </text>
