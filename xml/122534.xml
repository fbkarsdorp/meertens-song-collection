  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Mogt ik eind'lijk u <rhyme label="a" type="f">genaken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Voorwerp van mij <rhyme label="b" type="m">minnengloed</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Eenwig leven, voor uw <rhyme label="a" type="f" corresp="#s1:l1">blaken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Is mijn heil mijn eenigst <rhyme label="b" type="m" corresp="#s1:l2">zoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Om u te derven, wil ik liever <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Door een straal van uw <rhyme label="b" type="m">gezigt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Kan ik het leven, aan u <rhyme label="a" type="f" corresp="#s2:l1">geven</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Als een koest'rend <rhyme label="b" type="m" corresp="#s2:l2">zonnelicht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Niets weerhoud ons het <rhyme label="a" type="f">vermogen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Om te spreken met <rhyme label="b" type="m">malka√¢r</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Door een lonk slechts van uw <rhyme label="a" type="f" corresp="#s3:l1">oogen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Wordt ik straks mijn lot <rhyme label="b" type="m" corresp="#s3:l2">gewaar</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hij die door liefde, zoo teeder <rhyme label="a" type="f">griefde</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Maar een straal van uw <rhyme label="b" type="m">gelaat</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Laat zij trekken, Om mij te <rhyme label="a" type="f" corresp="#s4:l1">ontdekken</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dat hij mij nooit <rhyme label="b" type="m" corresp="#s4:l2">wederstaat</rhyme>.</l>
      </lg>
