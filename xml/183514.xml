<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>183514</id>
    <date>
      <year-start>1789</year-start>
      <year-end>1789</year-end>
    </date>
    <tags/>
    <melody>Ohne Lieb und ohne Wein</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Och! wat dolheid vangt gy <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Wufte <rhyme label="b" type="f">Landgenoten</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">Och! hoe zal uw woest <rhyme label="a" type="m" corresp="#s1:l1">bestaan</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Uwen ramp <rhyme label="b" type="f" corresp="#s1:l2">vergrooten</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Gy beroerd en Stad en <rhyme label="c" type="m">Land</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Door <rhyme label="d" type="f">Geweldnaaryen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En verstrekt den Belg tot <rhyme label="c" type="m" corresp="#s1:l5">schand</rhyme></l>
        <l id="s1:l8" met="3" type="+-">In deez' veege <rhyme label="d" type="f" corresp="#s1:l6">tyen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Kan het stomme <rhyme label="a" type="m">Huissieraad</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Uwe rampen <rhyme label="b" type="f">heelen</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Gy doet, door uw schandlyk <rhyme label="a" type="m" corresp="#s2:l1">kwaad</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Veele Braven <rhyme label="b" type="f" corresp="#s2:l2">deelen</rhyme></l>
        <l id="s2:l5" met="4" type="+-">In vervolging, vuur en <rhyme label="c" type="m">staal</rhyme>;</l>
        <l id="s2:l6" met="3" type="+-">Straks ligt gy <rhyme label="d" type="f">verslagen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En zult deez', uw <rhyme label="c" type="m" corresp="#s2:l5">zegepraal</rhyme>.</l>
        <l id="s2:l8" met="3" type="+-">Dan te laat <rhyme label="d" type="f" corresp="#s2:l6">beklagen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Staakt des, onbedachten <rhyme label="a" type="m">hoop</rhyme>!</l>
        <l id="s3:l2" met="3" type="+-">Staakt uw schandlyk <rhyme label="b" type="f">rooven</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Uw verwoedde dolle <rhyme label="a" type="m" corresp="#s3:l1">loop</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Doet den glans <rhyme label="b" type="f" corresp="#s3:l2">verdoven</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Vlekt den roem eens <rhyme label="c" type="m">Bataviers</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Die door vrome <rhyme label="d" type="f">daden</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Steeds met kraakende <rhyme label="c" type="m" corresp="#s3:l5">Eerlauriers</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Ryklyk wierd <rhyme label="d" type="f" corresp="#s3:l6">beladen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
