    <melody>O zalig heilig Bethlehem</melody>
  <author>Jacob Coenraetsz Mayvogel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heer, ghy zyt vol van <rhyme label="a" type="m">genaed</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Barmhertigh ende vol van <rhyme label="b" type="f">trouwe</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Vol vriend'lijckheyt en vol <rhyme label="a" type="m" corresp="#s1:l1">weldaet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Den genen die de sonde <rhyme label="b" type="f" corresp="#s1:l2">schouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy hebt den mensch, o Heer <rhyme label="a" type="m">geset</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Een mate van sijn nietigh <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'t Getal der dagen dat staet <rhyme label="a" type="m" corresp="#s2:l1">net</rhyme></l>
        <l id="s2:l4" met="4" type="-+">By u seer klaer als <rhyme label="b" type="f" corresp="#s2:l2">opgeschreven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De Iaren zijn gelijck als <rhyme label="a" type="m">roock</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die voor het oogh op aerd' wat <rhyme label="b" type="f">schijnen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Maer zijn gelijck een yd'le <rhyme label="a" type="m" corresp="#s3:l1">smoock</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die als een bloem op 't Velt <rhyme label="b" type="f" corresp="#s3:l2">verdwijnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daerom leert my bedencken <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Het eynde van mijn yd'le <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En dat mijn leven is <rhyme label="a" type="m" corresp="#s4:l1">doorvlecht</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Met veel verdriet, vol smert en <rhyme label="b" type="f" corresp="#s4:l2">klagen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Leert my, o Heer mijn <rhyme label="a" type="m">toeverlaet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Laet my die troost van u <rhyme label="b" type="f">verwerven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat ick leer sterven vroegh en <rhyme label="a" type="m" corresp="#s5:l1">spaet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En sterven kan, als ick moet <rhyme label="b" type="f" corresp="#s5:l2">sterven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Bewaert my voor een felle <rhyme label="a" type="m">doot</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat ick niet snel word <rhyme label="b" type="f">wech-genomen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Voor 't eeuwigh lijden in de <rhyme label="a" type="m" corresp="#s6:l1">noot</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Heer, wilt my doch te hulpe <rhyme label="b" type="f" corresp="#s6:l2">komen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Godt! wanneer ick scheyden <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Uyt dit seer broos en nietigh <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Uyt dit bedroefde <rhyme label="a" type="m" corresp="#s7:l1">jammer-dal</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Wilt my een saligh einde <rhyme label="b" type="f" corresp="#s7:l2">geven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Een Saligh afscheyt is het <rhyme label="a" type="m">best</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Wat is aen al het aertsch <rhyme label="b" type="f">bedreven</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als wy maer op het <rhyme label="a" type="m" corresp="#s8:l1">alderlest</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Verkrijgen 't Saligh Eeuwigh <rhyme label="b" type="f" corresp="#s8:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wech aertsche vreught, vol pracht en <rhyme label="a" type="m">Staet</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Mijn Zieltje tracht na 't Eeuwigh <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Ach Heer! wilt my door u <rhyme label="a" type="m" corresp="#s9:l1">genaed</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Het Hemelrijck hier namaels <rhyme label="b" type="f" corresp="#s9:l2">geven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
