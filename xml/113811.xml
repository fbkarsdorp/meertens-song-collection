  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1">DE Goden vroede</l>
        <l id="s1:l2">Hebben altyds d'Oogh'</l>
        <l id="s1:l3">Snel op de goede</l>
        <l id="s1:l4">Al sitten sy hoogh'</l>
        <l id="s1:l5">Straffende quaed'</l>
        <l id="s1:l6">Staen voor deuchde en eer</l>
        <l id="s1:l7">'t Bleeck inde Raed'</l>
        <l id="s1:l8">Van Iupiter die Heer.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1">Veel Reusen wrede</l>
        <l id="s2:l2">Met Berghen bedeckt</l>
        <l id="s2:l3">Licaon mede</l>
        <l id="s2:l4">Verandert begheckt</l>
        <l id="s2:l5">VVerden dees t'saem</l>
        <l id="s2:l6">Deucalion, sijn wijff</l>
        <l id="s2:l7">Pyrha bequaem</l>
        <l id="s2:l8">Behielden zielen lijff.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1">Sy sijn ghetrouwe</l>
        <l id="s3:l2">Philemon ghewest</l>
        <l id="s3:l3">Baucis de ouwe</l>
        <l id="s3:l4">Beyd' verleent een geest</l>
        <l id="s3:l5">Sloughen Midas</l>
        <l id="s3:l6">Ende Tiphon seer sterck</l>
        <l id="s3:l7">Dus yder was</l>
        <l id="s3:l8">Krijghende loon nae werck.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1">'T moedigh opstelle</l>
        <l id="s4:l2">Dat Arachne wracht</l>
        <l id="s4:l3">'t Voorneem rebelle</l>
        <l id="s4:l4">Teghens Pallams kracht</l>
        <l id="s4:l5">Acteons zinn'</l>
        <l id="s4:l6">Om Diana ter nood'</l>
        <l id="s4:l7">T'bringhen bracht inn'</l>
        <l id="s4:l8">Een schandelijcke dood.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1">Vlisses wijse</l>
        <l id="s5:l2">En AEneas vroom</l>
        <l id="s5:l3">Sijn voor afgrijse</l>
        <l id="s5:l4">Op Berghe en stroom</l>
        <l id="s5:l5">Behoed' ghespaert</l>
        <l id="s5:l6">Lycabas en Dictis</l>
        <l id="s5:l7">Verkeert, beswaert</l>
        <l id="s5:l8">In zee-ridders of visch.</l>
      </lg>
    </lg>
  </text>
