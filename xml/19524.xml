      <category translation="emotions">emoties</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DOen 't gister avont doncker <rhyme label="a" type="m">was</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Liep ick na de <rhyme label="b" type="m">Meyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ik steeg ik stapte noest en <rhyme label="a" type="m" corresp="#s1:l1">ras</rhyme>.</l>
        <l id="s1:l4" met="3" type="+-">'k Dagt my was <rhyme label="b" type="m" corresp="#s1:l2">bereyt</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Soete <rhyme label="c" type="m">vreugt</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">'k Was heel <rhyme label="d" type="m">bly</rhyme></l>
        <l id="s1:l7" met="2" type="+-">'k voelde <rhyme label="e" type="m">smert</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Druk noch <rhyme label="d" type="m" corresp="#s1:l6">ly</rhyme></l>
        <l id="s1:l9" met="2" type="+-">My <rhyme label="f" type="m">beklom</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">'t Scheen ik in vreugde <rhyme label="f" type="m" corresp="#s1:l9">swom</rhyme>;</l>
        <l id="s1:l11" met="3" type="+-">'k naekte mijn <rhyme label="g" type="m">Goddin</rhyme>.</l>
        <l id="s1:l12" met="3" type="+-">'k Hoopte <rhyme label="g" type="m" corresp="#s1:l11">wedermin</rhyme>,</l>
        <l id="s1:l13" met="3" type="+-">En ly voor haar <rhyme label="h" type="m">bloot</rhyme></l>
        <l id="s1:l14" met="4" type="+-">Dat ik eerst in 't herte <rhyme label="h" type="m" corresp="#s1:l13">sloot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer ach! sy met een wreet <rhyme label="a" type="m">gemoet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Naer een lang <rhyme label="b" type="m">verhael</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Stiet al mijn klagen met de <rhyme label="a" type="m" corresp="#s2:l1">voet</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Door haer harde <rhyme label="b" type="m" corresp="#s2:l2">taal</rhyme>.</l>
        <l id="s2:l5" met="2" type="+-">'t Felle <rhyme label="c" type="m">woordt</rhyme></l>
        <l id="s2:l6" met="2" type="+-">dat sy <rhyme label="d" type="m">sprak</rhyme>,</l>
        <l id="s2:l7" met="2" type="+-">My in 't <rhyme label="e" type="m">hert</rhyme></l>
        <l id="s2:l8" met="2" type="+-">Vinnigh <rhyme label="d" type="m" corresp="#s2:l6">stak</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Als een <rhyme label="f" type="m">mes</rhyme>:</l>
        <l id="s2:l10" met="3" type="-+">'k Riep wreede <rhyme label="f" type="m" corresp="#s2:l9">moorderes</rhyme></l>
        <l id="s2:l11" met="3" type="+-">Doogt ghy dit en <rhyme label="g" type="m">my</rhyme>,</l>
        <l id="s2:l12" met="3" type="+-">Dat ik treurigh <rhyme label="g" type="m" corresp="#s2:l11">ly</rhyme>?</l>
        <l id="s2:l13" met="3" type="+-">Leef ik droef die <rhyme label="h" type="m">tijt</rhyme></l>
        <l id="s2:l14" met="4" type="+-">Dat ghy schuwig van my <rhyme label="h" type="m" corresp="#s2:l13">zijt</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ghy die my eertijdts gunst <rhyme label="a" type="m">bewees</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ag! zijt ghy my <rhyme label="b" type="m">sat</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Gedenkt ghy niet hoe 't purper <rhyme label="a" type="m" corresp="#s3:l1">rees</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Als ik by u <rhyme label="b" type="m" corresp="#s3:l2">trat</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Soete <rhyme label="c" type="m">maegt</rhyme>!</l>
        <l id="s3:l6" met="2" type="+-">Nog eer <rhyme label="d" type="m">lang</rhyme>,</l>
        <l id="s3:l7" met="2" type="+-">Op het <rhyme label="e" type="m">wit</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Van u <rhyme label="d" type="m" corresp="#s3:l6">wang</rhyme>,</l>
        <l id="s3:l9" met="2" type="+-">En my <rhyme label="f" type="m">schonk</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Oogjens vol soet <rhyme label="f" type="m" corresp="#s3:l9">gelonk</rhyme></l>
        <l id="s3:l11" met="3" type="+-">'k Roep dan met <rhyme label="g" type="m">geluyt</rhyme></l>
        <l id="s3:l12" met="3" type="+-">Lief u wreedheyt <rhyme label="g" type="m" corresp="#s3:l11">uit</rhyme>;</l>
        <l id="s3:l13" met="3" type="+-">Dat ghy my laet <rhyme label="h" type="m">treen</rhyme></l>
        <l id="s3:l14" met="4" type="+-">Met een blaeuw gevlakte <rhyme label="h" type="m" corresp="#s3:l13">scheen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
