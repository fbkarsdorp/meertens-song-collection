  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WEduw' Vrauwkens <rhyme label="a" type="f">altemaele</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Stelt u drofheyt aen een <rhyme label="b" type="m">kant</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ick sal u wat gaen <rhyme label="a" type="f" corresp="#s1:l1">verhaele</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Gheschiet in ons <rhyme label="b" type="m" corresp="#s1:l2">Vlaenderlant</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Van een weduwe Vrauw <rhyme label="c" type="m">eylaes</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die haer Man ghestorven <rhyme label="c" type="m" corresp="#s1:l5">was</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Seven weken en drye <rhyme label="d" type="f">daghen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Hoort eens hoe aldaer quam <rhyme label="d" type="f" corresp="#s1:l7">vraghen</rhyme></l>
        <l id="s1:l9" met="4" type="+-">Een Schoen-maecker naer <rhyme label="e" type="m">logys</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Die quam reysen van <rhyme label="e" type="m" corresp="#s1:l9">Parys</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dese Vrauw uyt <rhyme label="a" type="f">charitate</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Was den armen <rhyme label="b" type="m">goedertier</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Sy sey vrient komt vander <rhyme label="a" type="f" corresp="#s2:l1">straete</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Sit in huys wat by het <rhyme label="b" type="m" corresp="#s2:l2">vier</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Hy sprack haer met goe woorden <rhyme label="c" type="m">toe</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Vrouwken lief ick ben soo <rhyme label="c" type="m" corresp="#s2:l5">moe</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Sy vraeghde hem met goede <rhyme label="d" type="f">reden</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Vrient van waer comt gy <rhyme label="d" type="f" corresp="#s2:l7">ghetreden</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Van Paradys sprack desen <rhyme label="e" type="m">kneght</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Daer het alles gaet seer <rhyme label="e" type="m" corresp="#s2:l9">slecht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Komt gy van't Paradys <rhyme label="a" type="f">getreden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Vriendt ghy zyt my <rhyme label="b" type="m">willecom</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Myn Man is oock <rhyme label="a" type="f" corresp="#s3:l1">overleden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Maer hy en komt niet eens <rhyme label="b" type="m" corresp="#s3:l2">weerom</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En den Pastor maeckt my <rhyme label="c" type="m">wys</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dat hy is in't <rhyme label="c" type="m" corresp="#s3:l5">Paradys</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Syt ghy nu van van daer <rhyme label="d" type="f">ghekomen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Hebt ghy toch hem niet <rhyme label="d" type="f" corresp="#s3:l7">vernomen</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">Het was eenen rossen <rhyme label="e" type="m">Man</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">Die wel kloeffen maecken <rhyme label="e" type="m" corresp="#s3:l9">kan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Jae ick ken hem wel ter <rhyme label="a" type="f">degen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Sprack dien fyn gheslepen <rhyme label="b" type="m">knecht</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Hy heeft op myn logist <rhyme label="a" type="f" corresp="#s4:l1">geleghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Och het gaet met hem soo <rhyme label="b" type="m" corresp="#s4:l2">sleght</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Hy is wel in het Hemels <rhyme label="c" type="m">perck</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Maer hy loopt daer sonder <rhyme label="c" type="m" corresp="#s4:l5">werck</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Want dit zyn de meeste <rhyme label="d" type="f">plaghen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Niemant magh daer kloeffen <rhyme label="d" type="f" corresp="#s4:l7">dragen</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Dus soo loopt hy sonder <rhyme label="e" type="m">schoen</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">En sonner kleers om aen te <rhyme label="e" type="m" corresp="#s4:l9">doen</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Lieven heer myn leden <rhyme label="a" type="f">beven</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Sprack de Vrauw, geheel <rhyme label="b" type="m">belaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Hy kost hier soo weldigh <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Most hy daerom van my <rhyme label="b" type="m" corresp="#s5:l2">gaen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">t'Is waer hy was geheel nackt <rhyme label="c" type="m">gesteld</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Sonders kleers, of sonder <rhyme label="c" type="m" corresp="#s5:l5">gelt</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Ey swygh togh van hem te <rhyme label="d" type="f">spreken</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Spreeckt dẽ knecht myn hertmoet <rhyme label="d" type="f" corresp="#s5:l7">brekẽ</rhyme></l>
        <l id="s5:l9" met="4" type="+-">Want hy is ghelijck een <rhyme label="e" type="m">doodt</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">Door de armoede <rhyme label="e" type="m" corresp="#s5:l9">groot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Vrient keert gy haest <rhyme label="a" type="f">wederomme</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">'k Sal terstondt maecken <rhyme label="b" type="m">ghereedt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Twintigh Guldens ghelt in <rhyme label="a" type="f" corresp="#s6:l1">somme</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En daer by syn beste <rhyme label="b" type="m" corresp="#s6:l2">kleet</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">'k Sal het steken in een <rhyme label="c" type="m">sack</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Ghy kont draeghen met <rhyme label="c" type="m" corresp="#s6:l5">ghemaeck</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">'k Sal het doen, sprack hy sonder <rhyme label="d" type="f">faelen</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Maer dat moet gy my <rhyme label="d" type="f" corresp="#s6:l7">betaelen</rhyme>,</l>
        <l id="s6:l9" met="4" type="+-">Sy seyd', 'ken weyger u geen <rhyme label="e" type="m">gelt</rhyme>,</l>
        <l id="s6:l10" met="4" type="+-">Siet dat ghy't maer wel <rhyme label="e" type="m" corresp="#s6:l9">bestelt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Sy maeckten de <rhyme label="a" type="f">accordatie</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Dat sy gaf een <rhyme label="b" type="m">pattacon</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Doen sprack dese Vrauw <rhyme label="a" type="f" corresp="#s7:l1">eylacie</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Dat's noch geelt dat myn Man <rhyme label="b" type="m" corresp="#s7:l2">won</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">s' Heeft den pack hem op <rhyme label="c" type="m">geleyt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">En hy heeft adieu <rhyme label="c" type="m" corresp="#s7:l5">geseyt</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Doen ginck sy by haer <rhyme label="d" type="f">gebeuren</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Vertellen haer <rhyme label="d" type="f" corresp="#s7:l7">avantueren</rhyme>,</l>
        <l id="s7:l9" met="4" type="+-">Wat dat sy van haeren <rhyme label="e" type="m">schadt</rhyme>,</l>
        <l id="s7:l10" met="4" type="+-">Aen haer man gesonden <rhyme label="e" type="m" corresp="#s7:l9">hadt</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Wel wien drommel sou dit <rhyme label="a" type="f">herde</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Sprack een Man, gy syt alles <rhyme label="b" type="m">quyt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Ten zy dat daer een te <rhyme label="a" type="f" corresp="#s8:l1">peerde</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Met'er haest seer achter <rhyme label="b" type="m" corresp="#s8:l2">ryt</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Hy spronck op syn peert <rhyme label="c" type="m">aldaer</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">En hy reet hem achter <rhyme label="c" type="m" corresp="#s8:l5">naer</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Maer den knech keeck dickwils <rhyme label="d" type="f">omme</rhyme></l>
        <l id="s8:l8" met="4" type="+-">En doen hy dat peert sagh <rhyme label="d" type="f" corresp="#s8:l7">komen</rhyme>,</l>
        <l id="s8:l9" met="4" type="+-">Stack den pack daer in een <rhyme label="e" type="m">gracht</rhyme>,</l>
        <l id="s8:l10" met="4" type="+-">En hy wenscht' hem goeden <rhyme label="e" type="m" corresp="#s8:l9">dagh</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Vrient hebt niet een <rhyme label="a" type="f">vernomen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Met een groote sack <rhyme label="b" type="m">ghelaen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Jae sprack hy 'k heb hem sien <rhyme label="a" type="f" corresp="#s9:l1">komen</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Maer hy is in den bosch <rhyme label="b" type="m" corresp="#s9:l2">gegaen</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Hy seyd' houT my peert dogh <rhyme label="c" type="m">wat</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">'k Sal hem loopen achter 't <rhyme label="c" type="m" corresp="#s9:l5">gat</rhyme>.</l>
        <l id="s9:l7" met="4" type="+-">Dit was dat den knecht <rhyme label="d" type="f">begeerde</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">Hy spronck haestelijck te <rhyme label="d" type="f" corresp="#s9:l7">peerde</rhyme>,</l>
        <l id="s9:l9" met="4" type="+-">Met den pack soo reed' hy <rhyme label="e" type="m">voort</rhyme>,</l>
        <l id="s9:l10" met="4" type="+-">Dat van hem noyt is <rhyme label="e" type="m" corresp="#s9:l9">gehoort</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Doen hy't bos wel hadt door <rhyme label="a" type="f">keken</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Is hy wederom <rhyme label="b" type="m">gekeert</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Maer den Man stont sonder <rhyme label="a" type="f" corresp="#s10:l1">spreken</rhyme>.</l>
        <l id="s10:l4" met="4" type="+-">Als hy hem vont sonder <rhyme label="b" type="m" corresp="#s10:l2">peert</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Dus bedocht hy 't synder <rhyme label="c" type="m">baet</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Eenen slimmen goeden <rhyme label="c" type="m" corresp="#s10:l5">raet</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Hy ginck aen de Vrauw <rhyme label="d" type="f">verkonden</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Ach ick heb den bood' <rhyme label="d" type="f" corresp="#s10:l7">gevonden</rhyme>,</l>
        <l id="s10:l9" met="4" type="+-">Ba ghy had immers <rhyme label="e" type="m">gelyck</rhyme>,</l>
        <l id="s10:l10" met="4" type="+-">Dat hy quam van't <rhyme label="e" type="m" corresp="#s10:l9">Hemelryck</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Ach hy scheyde schier van't <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Somtydts viel hy op syn <rhyme label="b" type="m">knien</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">k Heb hem noch myn peert <rhyme label="a" type="f" corresp="#s11:l1">gegeven</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Om dat hy noch soude <rhyme label="b" type="m" corresp="#s11:l2">rien</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Want hy was soo swaer <rhyme label="c" type="m">gelaen</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Dat hy niet en konde <rhyme label="c" type="m" corresp="#s11:l5">gaen</rhyme>,</l>
        <l id="s11:l7" met="4" type="+-">Och gebeur ick sal't u <rhyme label="d" type="f">loonen</rhyme>,</l>
        <l id="s11:l8" met="4" type="+-">Dat gy u goet hert ginck <rhyme label="d" type="f" corresp="#s11:l7">thoonen</rhyme>,</l>
        <l id="s11:l9" met="4" type="+-">'k Wil betaelen strackx u <rhyme label="e" type="m">peert</rhyme>,</l>
        <l id="s11:l10" met="4" type="+-">Seght maer wat het u was <rhyme label="e" type="m" corresp="#s11:l9">weert</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Sy betaelt het peert mits <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">En sy sprack geheel <rhyme label="b" type="m">verblyt</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Nu en hoef ick niet te <rhyme label="a" type="f" corresp="#s12:l1">vreesen</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Want hy sal in korten <rhyme label="b" type="m" corresp="#s12:l2">tydt</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">In het Paradis daer <rhyme label="c" type="m">syn</rhyme>.</l>
        <l id="s12:l6" met="4" type="+-">Myn Man helpen uyt de <rhyme label="c" type="m" corresp="#s12:l5">pyn</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">Dus waeren sy alle <rhyme label="d" type="f">drye</rhyme>,</l>
        <l id="s12:l8" met="4" type="+-">Seer vrolycke ende <rhyme label="d" type="f" corresp="#s12:l7">blye</rhyme>,</l>
        <l id="s12:l9" met="4" type="+-">'t Vrouwken was gherust <rhyme label="e" type="m">ghestelt</rhyme>,</l>
        <l id="s12:l10" met="4" type="+-">Elck lacht daer men dit <rhyme label="e" type="m" corresp="#s12:l9">vertelt</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>
