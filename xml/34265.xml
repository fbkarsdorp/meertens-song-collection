  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GEsellen van den <rhyme label="a" type="m">wijn</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Wy moeten dese mael eens vrolijck <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Laet ons singhen // laet ons <rhyme label="b" type="f">springhen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Laet ons drincken in het <rhyme label="c" type="m">rondt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dat Leopoldus langh blijf <rhyme label="c" type="m" corresp="#s1:l4">ghesondt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Nu Mars den <rhyme label="a" type="m">Leger-heldt</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Wordt door den Peys ghedreven uyt het <rhyme label="a" type="m" corresp="#s2:l1">veldt</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Laet ons singhen // laet ons <rhyme label="b" type="f">springhen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Laet ons drincken in het <rhyme label="c" type="m">rondt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dat Leopoldus langh blijf <rhyme label="c" type="m" corresp="#s2:l4">ghesondt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Waerdt, den Knecht, de <rhyme label="a" type="m">Meydt</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Die zijn tot onsen dienst al t’saem <rhyme label="a" type="m" corresp="#s3:l1">bereydt</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Laet ons singhen // laet ons <rhyme label="b" type="f">springhen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Laet ons drincken in het <rhyme label="c" type="m">rondt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat Leopoldus langh blijf <rhyme label="c" type="m" corresp="#s3:l4">ghesondt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Tsa brenght ons uyt het <rhyme label="a" type="m">vat</rhyme></l>
        <l id="s4:l2" met="5" type="-+">Het Fransch het Spaensch het over-Rijnsche <rhyme label="a" type="m" corresp="#s4:l1">nat</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Laet ons singhen // laet ons <rhyme label="b" type="f">springhen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Laet ons drincken in het <rhyme label="c" type="m">rondt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dat Leopoldus langh blijf <rhyme label="c" type="m" corresp="#s4:l4">ghesondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Het gelt u lieven <rhyme label="a" type="m">maet</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">Op dat de volle fluyt eens omme <rhyme label="a" type="m" corresp="#s5:l1">gaet</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Laet ons singhen // laet ons <rhyme label="b" type="f">springhen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Laet ons drincken in het <rhyme label="c" type="m">rondt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dat Leopoldus langh blijf <rhyme label="c" type="m" corresp="#s5:l4">ghesondt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wie ’t minst suypt van ons <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Tot boet het heel gelagh betalen <rhyme label="a" type="m" corresp="#s6:l1">sal</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Laet ons singhen // laet ons <rhyme label="b" type="f">springhen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Laet ons drincken in het <rhyme label="c" type="m">rondt</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Dat Leopoldus langh blijf <rhyme label="c" type="m" corresp="#s6:l4">ghesondt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Laet sauffen weer van <rhyme label="a" type="m">heer</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Soo langh tot dat wy vallen van de <rhyme label="a" type="m" corresp="#s7:l1">keer</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Laet ons singen // laet ons <rhyme label="b" type="f">springen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Laet ons drincken in het <rhyme label="c" type="m">rondt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Dat Leopoldus langh blijf <rhyme label="c" type="m" corresp="#s7:l4">gesondt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
