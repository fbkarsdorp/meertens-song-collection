  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">NV wil ick een Liedeken <rhyme label="a" type="f">singhen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Daer mede de Liefste <rhyme label="a" type="f" corresp="#s1:l1">toebringhen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Een Kroesgen fijn, met <rhyme label="b" type="m">wijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dat Kroesgen is ledich <rhyme label="a" type="f">gedroncken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Het salder weer worden <rhyme label="a" type="f" corresp="#s2:l1">gheschoncken</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Voor v lief reyn // <rhyme label="b" type="m">serteyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hout daer schoon liefken in <rhyme label="a" type="f">deuchden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ontfanckter dat Kroesgen met <rhyme label="a" type="f" corresp="#s3:l1">vreuchden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van uwen knecht // <rhyme label="b" type="m">oprecht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Princesse laet liefde my <rhyme label="a" type="f">blijcken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Soo en sal ick v niet <rhyme label="a" type="f" corresp="#s4:l1">beswijcken</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Schoon edel vrou // op <rhyme label="b" type="m">trou</rhyme>.</l>
      </lg>
    </lg>
