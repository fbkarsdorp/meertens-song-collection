<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184941</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Tien geboden</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Christenen wilt neerstig <rhyme label="a" type="f">hooren</rhyme>:</l>
        <l id="s1:l2" met="4" type="-+">Niemant ten Hemel in kan <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">'tEn zy hy weder zy <rhyme label="a" type="f" corresp="#s1:l1">geboren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En Christus hebbe <rhyme label="b" type="m" corresp="#s1:l2">aengedaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den Vader, God den Heer <rhyme label="a" type="f">almachtigh</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Brenght self dit nieuwe schepsel <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">In sijnen Soon, door sijn geest <rhyme label="a" type="f" corresp="#s2:l1">krachtigh</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">'t Saedt hier van is des levens <rhyme label="b" type="m" corresp="#s2:l2">woordt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een Mensche dan door dese <rhyme label="a" type="f">leere</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Krijght d'oogen des verstants <rhyme label="b" type="m">verlicht</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Soo dat hy siet den glants des <rhyme label="a" type="f" corresp="#s3:l1">Heere</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Als met een ongedeckt <rhyme label="b" type="m" corresp="#s3:l2">gesicht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Geen saeck en acht hy weert te <rhyme label="a" type="f">wete</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dan Christus die daer in hem <rhyme label="b" type="m">werckt</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">De hooghte, diepte, lenght en <rhyme label="a" type="f" corresp="#s4:l1">breete</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Van Christus liefd' hy staegh <rhyme label="b" type="m" corresp="#s4:l2">bemerckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De hope staet hem voor <rhyme label="a" type="f">geschreven</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Van d'uytgenomen <rhyme label="b" type="m">erffenis</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Hy siet op 'theerlick eeuwigh <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">'tWelck des geloofs belooningh <rhyme label="b" type="m" corresp="#s5:l2">is</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy leeft niet meer na 'svleeschs <rhyme label="a" type="f">begeren</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Gelijck de woeste Wereldt <rhyme label="b" type="m">doet</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Hy wil hem langer niet <rhyme label="a" type="f" corresp="#s6:l1">generen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Na d'ydelheydt van sijn <rhyme label="b" type="m" corresp="#s6:l2">gemoedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den ouden Mensch, de aertsche <rhyme label="a" type="f">leden</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Heeft hy gekruysset en <rhyme label="b" type="m">gedoodt</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">'tHert sonder handen is <rhyme label="a" type="f" corresp="#s7:l1">besneden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En van onreynigheydt <rhyme label="b" type="m" corresp="#s7:l2">ontbloot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Het lichaem ende kracht der <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Heeft nu in hem geen <rhyme label="b" type="m">overhandt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Maer hy is van dien dienst <rhyme label="a" type="f" corresp="#s8:l1">ontbonden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En van dien slaeffelicken <rhyme label="b" type="m" corresp="#s8:l2">bandt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hoe soud' hy konnen hem <rhyme label="a" type="f">begeven</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Te gaen, gelijck de Wereldt <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">End' aen te trecken 't sondigh <rhyme label="a" type="f" corresp="#s9:l1">leven</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Na dien in hem woont Godes <rhyme label="b" type="m" corresp="#s9:l2">zaedt</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Als God bemind' end' <rhyme label="a" type="f">uitverkoren</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Bewandelt hy de goede <rhyme label="b" type="m">pa'en</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Gelijck of hy waer nieuw <rhyme label="a" type="f" corresp="#s10:l1">geboren</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Of uyt de dooden <rhyme label="b" type="m" corresp="#s10:l2">opgestaen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Want hy hem selven is <rhyme label="a" type="f">gestorven</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">En d'eygen lust begraven <rhyme label="b" type="m">heeft</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Een nieuwen aert heeft hy <rhyme label="a" type="f" corresp="#s11:l1">verworven</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Niet hy maer Christus in hem <rhyme label="b" type="m" corresp="#s11:l2">leeft</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Hy geeft sijn leden over <rhyme label="a" type="f">Gode</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Tot wap'nen der <rhyme label="b" type="m">gerechtigheydt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Met vlijt betracht hy Godts <rhyme label="a" type="f" corresp="#s12:l1">gebode</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">En werdt door Christus geest <rhyme label="b" type="m" corresp="#s12:l2">geleydt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Barmhertigh, heyligh, en <rhyme label="a" type="f">rechtvaerdigh</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Ootmoedigh, matelijck, vreedsaem, <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Verdraeghsaem, vriend'lick, <rhyme label="a" type="f" corresp="#s13:l1">goedtaerdigh</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Godtsaligh, langhsaem van <rhyme label="b" type="m" corresp="#s13:l2">gemoedt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hem gevende tot goede <rhyme label="a" type="f">wercken</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">En tot gebou van Godes <rhyme label="b" type="m">huys</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">'tGeloof door liefd' hy soeckt te <rhyme label="a" type="f" corresp="#s14:l1">stercken</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Volgt Christus na: neemt op sijn <rhyme label="b" type="m" corresp="#s14:l2">kruys</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Het voor-schrift van de heyl'ge <rhyme label="a" type="f">leere</rhyme></l>
        <l id="s15:l2" met="4" type="-+">By hem met trouw gehoorsaemt <rhyme label="b" type="m">wert</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Het suyver leven onses <rhyme label="a" type="f" corresp="#s15:l1">Heere</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Als een schoon beeldt staet in sijn <rhyme label="b" type="m" corresp="#s15:l2">hert</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Daerom sijn dwalingh uyt <rhyme label="a" type="f">onweten</rhyme></l>
        <l id="s16:l2" met="4" type="-+">En swackheydt daer hy tegen <rhyme label="b" type="m">strijdt</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Wil Godt den Vader gansch <rhyme label="a" type="f" corresp="#s16:l1">vergeten</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">En niet gedencken t' een'ger <rhyme label="b" type="m" corresp="#s16:l2">tijdt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Wel waer is 't dat hy door het <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Seer dickmael moet ten proeve <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Maer hier in moet hy hem <rhyme label="a" type="f" corresp="#s17:l1">verblijden</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Dat Christus hem is voor <rhyme label="b" type="m" corresp="#s17:l2">gegaen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">En wat dat hier hem staet te <rhyme label="a" type="f">dragen</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Dat sulcks op veel na niet is <rhyme label="b" type="m">waerdt</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Die eere die ten jonghsten <rhyme label="a" type="f" corresp="#s18:l1">dage</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Aen hem sal sijn <rhyme label="b" type="m" corresp="#s18:l2">geopenbaert</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">En midd'ler tijdt heeft sijn <rhyme label="a" type="f">gewisse</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Een troost die alles <rhyme label="b" type="m">overwint</rhyme>:</l>
        <l id="s19:l3" met="4" type="-+">Sijn hert geeft hem <rhyme label="a" type="f" corresp="#s19:l1">getuygenisse</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Dat Godt om Christus hem <rhyme label="b" type="m" corresp="#s19:l2">bemindt</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Och Heer wilt doch de <rhyme label="a" type="f">reuckeloose</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Vertoonen hare droev' <rhyme label="b" type="m">elendt</rhyme>:</l>
        <l id="s20:l3" met="4" type="-+">Ruckt wegh den Mensche uyt het <rhyme label="a" type="f" corresp="#s20:l1">boose</rhyme></l>
        <l id="s20:l4" met="4" type="-+">En maeckt haer uwe wet <rhyme label="b" type="m" corresp="#s20:l2">bekent</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Die haer dienstbaerheydt nu <rhyme label="a" type="f">mercken</rhyme>,</l>
        <l id="s21:l2" met="4" type="-+">End' houden uwe wet voor <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s21:l3" met="4" type="-+">Verlost haer dat sy niet en <rhyme label="a" type="f" corresp="#s21:l1">wercken</rhyme></l>
        <l id="s21:l4" met="4" type="-+">Dat strijdigh is met haer <rhyme label="b" type="m" corresp="#s21:l2">gemoedt</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Geeft dat haer langer niet doe <rhyme label="a" type="f">suchten</rhyme></l>
        <l id="s22:l2" met="4" type="-+">De sware wet van hare <rhyme label="b" type="m">le'en</rhyme>,</l>
        <l id="s22:l3" met="4" type="-+">Maer dat sy door 't gestadigh <rhyme label="a" type="f" corresp="#s22:l1">duchten</rhyme>,</l>
        <l id="s22:l4" met="4" type="-+">Tot liefde mogen voorwaert <rhyme label="b" type="m" corresp="#s22:l2">tre'en</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Die nu beginnen eerst te <rhyme label="a" type="f">bloeyen</rhyme></l>
        <l id="s23:l2" met="4" type="-+">En die noch zijn als Kind'ren <rhyme label="b" type="m">teer</rhyme>,</l>
        <l id="s23:l3" met="4" type="-+">Vergunt haer dat sy mogen <rhyme label="a" type="f" corresp="#s23:l1">groeyen</rhyme>,</l>
        <l id="s23:l4" met="4" type="-+">En krijgen wasdom meer en <rhyme label="b" type="m" corresp="#s23:l2">meer</rhyme>:</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Die nu veel hebben <rhyme label="a" type="f">toegenomen</rhyme>,</l>
        <l id="s24:l2" met="4" type="-+">En Mannelijck verwinnen 't <rhyme label="b" type="m">quaedt</rhyme></l>
        <l id="s24:l3" met="4" type="-+">Geeft dat sy noch al naerder <rhyme label="a" type="f" corresp="#s24:l1">komen</rhyme></l>
        <l id="s24:l4" met="4" type="-+">Des Heere Christus volle <rhyme label="b" type="m" corresp="#s24:l2">maet</rhyme>,</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Op dat de Zielen zijnd' <rhyme label="a" type="f">herschapen</rhyme></l>
        <l id="s25:l2" met="4" type="-+">En met den heyl'gen geest <rhyme label="b" type="m">gepaert</rhyme>,</l>
        <l id="s25:l3" met="4" type="-+">De lichamen na hart <rhyme label="a" type="f" corresp="#s25:l1">ontslapen</rhyme>,</l>
        <l id="s25:l4" met="4" type="-+">Oock werden wederom <rhyme label="b" type="m" corresp="#s25:l2">gebaert</rhyme>,</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">Niet met haer eerste standts <rhyme label="a" type="f">gebreken</rhyme>,</l>
        <l id="s26:l2" met="4" type="-+">Maer door een Goddelijcke <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s26:l3" met="4" type="-+">Met Christus lichaem <rhyme label="a" type="f" corresp="#s26:l1">vergeleken</rhyme>,</l>
        <l id="s26:l4" met="4" type="-+">En tot een Hemelsch eer <rhyme label="b" type="m" corresp="#s26:l2">gebracht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
