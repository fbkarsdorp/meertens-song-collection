<song>
  <meta>
    <id>9158</id>
    <date>
      <year-start>1676</year-start>
      <year-end>1676</year-end>
    </date>
    <location>
      <orginal-name>utrecht</orginal-name>
      <standard-name>Utrecht, The Netherlands</standard-name>
      <coordinates>
        <lon>52.0949753</lon>
        <lat>5.109708</lat>
      </coordinates>
    </location>
    <tags>
      <tag>spiritual song</tag>
    </tags>
    <melody>Psalm 006 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Opperwesig <rhyme label="a" type="f">Heere</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Hoe schoon is het <rhyme label="a" type="f" corresp="#s1:l1">verkeren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Met u in 's Hemels <rhyme label="b" type="m">Hoff</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Hoe schoon is u <rhyme label="c" type="f">gesichte</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Vol Hemels <rhyme label="c" type="f" corresp="#s1:l4">Sonne-lichte</rhyme>!</l>
        <l id="s1:l6" met="3" type="-+">hoe weerdig sijt gy <rhyme label="b" type="m" corresp="#s1:l3">loff</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O hoogverheven <rhyme label="a" type="f">Koningh</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">O Rotsteen tot mijn <rhyme label="a" type="f" corresp="#s2:l1">woningh</rhyme>!</l>
        <l id="s2:l3" met="3" type="-+">Der Heyerscharen <rhyme label="b" type="m">Heer</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">O wesen aller <rhyme label="c" type="f">wesen</rhyme>!</l>
        <l id="s2:l5" met="3" type="-+">Hoe seer sijt gy te <rhyme label="c" type="f" corresp="#s2:l4">vresen</rhyme>!</l>
        <l id="s2:l6" met="3" type="-+">Seer groot is u 's Naems <rhyme label="b" type="m" corresp="#s2:l3">eer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Iehova light en <rhyme label="a" type="f">leven</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Iehova <rhyme label="a" type="f" corresp="#s3:l1">hooch-verheven</rhyme>!</l>
        <l id="s3:l3" met="3" type="-+">Iehova sielen <rhyme label="b" type="m">rust</rhyme>!</l>
        <l id="s3:l4" met="3" type="-+">O hoe oneyndich <rhyme label="c" type="f">heerlijck</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Hoe schoon en hoe <rhyme label="c" type="f" corresp="#s3:l4">begeerlijck</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Sijt gy mijn rust en <rhyme label="b" type="m" corresp="#s3:l3">lust</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Oneyndich <rhyme label="a" type="f">hoogh-verheven</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Oneyndich salich <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme>!</l>
        <l id="s4:l3" met="3" type="-+">O Rustelose <rhyme label="b" type="m">Rust</rhyme>!</l>
        <l id="s4:l4" met="3" type="-+">Ia daer u glans komt <rhyme label="c" type="f">schijnen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Daer moet de siel <rhyme label="c" type="f" corresp="#s4:l4">verdwijnen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In u als gy haer <rhyme label="b" type="m" corresp="#s4:l3">kust</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Heer ick stae <rhyme label="a" type="f">verlegen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wat loff dat ick sal <rhyme label="a" type="f" corresp="#s5:l1">geven</rhyme></l>
        <l id="s5:l3" met="3" type="-+">U groote <rhyme label="b" type="m">Majesteyt</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Om eenichsins met <rhyme label="c" type="f">stucken</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Soo iet wat uyt te <rhyme label="c" type="f" corresp="#s5:l4">drucken</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Van uwe <rhyme label="b" type="m" corresp="#s5:l3">Weerdicheyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O kond' ick eens <rhyme label="a" type="f">uytgalmen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">U loff door lied of <rhyme label="a" type="f" corresp="#s6:l1">Psalmen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Tot grootheyt van u <rhyme label="b" type="m">eer</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Maar ach! mijn light! mijn <rhyme label="c" type="f">leven</rhyme>!</l>
        <l id="s6:l5" met="3" type="-+">Wat loff sal ick u <rhyme label="c" type="f" corresp="#s6:l4">geven</rhyme>?</l>
        <l id="s6:l6" met="3" type="-+">O groot oneyndich <rhyme label="b" type="m" corresp="#s6:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Veel naerder staet mijn <rhyme label="a" type="f">sincken</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">In d' Oceaan <rhyme label="a" type="f" corresp="#s7:l1">verdrincken</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Van Gods <rhyme label="b" type="m">verwonderingh</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Dan dat ick uwe <rhyme label="c" type="f">naeme</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Sou konnen loff <rhyme label="c" type="f" corresp="#s7:l4">berame</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Hooch boven alle <rhyme label="b" type="m" corresp="#s7:l3">dingh</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O algenoeghsaem <rhyme label="a" type="f">heerlijck</rhyme>!</l>
        <l id="s8:l2" met="3" type="-+">Hoe schoon, lief en <rhyme label="a" type="f" corresp="#s8:l1">begeerlijck</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Verheven <rhyme label="b" type="m">Majesteyt</rhyme>!</l>
        <l id="s8:l4" met="3" type="-+">Ick vind' begin noch <rhyme label="c" type="f">ende</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Waer dat mijn siel gaet <rhyme label="c" type="f" corresp="#s8:l4">wende</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">'t Blijft al <rhyme label="b" type="m" corresp="#s8:l3">oneyndicheyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O weerdigh schone <rhyme label="a" type="f">Heere</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">U toekomst grootheyt, <rhyme label="a" type="f" corresp="#s9:l1">eere</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Loff, glory, liefd' en <rhyme label="b" type="m">roem</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Ach Heer! gy treckt mijn <rhyme label="c" type="f">sinnen</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Siel lichaem in u <rhyme label="c" type="f" corresp="#s9:l4">binnen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">In 't Godlijck <rhyme label="b" type="m" corresp="#s9:l3">Heylichdom</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wat doet gy daer al <rhyme label="a" type="f">dalen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Veel heerlijck schone <rhyme label="a" type="f" corresp="#s10:l1">stralen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Van uw aangesicht <rhyme label="b" type="m">schoon</rhyme>!</l>
        <l id="s10:l4" met="3" type="-+">Hooch herelijck <rhyme label="c" type="f">verheven</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Sie ick u daer mijn <rhyme label="c" type="f" corresp="#s10:l4">leven</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Op u Majesteyts <rhyme label="b" type="m" corresp="#s10:l3">troon</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Uw schoonheyt doet my <rhyme label="a" type="f">sincken</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Als of ick sou <rhyme label="a" type="f" corresp="#s11:l1">verdrincken</rhyme></l>
        <l id="s11:l3" met="3" type="-+">In dat heerlijck <rhyme label="b" type="m">gesight</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">O Salich! Salich <rhyme label="c" type="f">sincken</rhyme>!</l>
        <l id="s11:l5" met="3" type="-+">O Salich te <rhyme label="c" type="f" corresp="#s11:l4">verdrincken</rhyme>.</l>
        <l id="s11:l6" met="3" type="-+">In 't eeuwig salich <rhyme label="b" type="m" corresp="#s11:l3">Light</rhyme>!</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Hoe veyligh is dat <rhyme label="a" type="f">rusten</rhyme></l>
        <l id="s12:l2" met="3" type="-+">In u door siels <rhyme label="a" type="f" corresp="#s12:l1">wellusten</rhyme>?</l>
        <l id="s12:l3" met="3" type="-+">Hoe smaecklijck is u <rhyme label="b" type="m">wijn</rhyme>?</l>
        <l id="s12:l4" met="3" type="-+">Gy maeckt mijn siele <rhyme label="c" type="f">droncken</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Door liefde soo <rhyme label="c" type="f" corresp="#s12:l4">beschoncken</rhyme></l>
        <l id="s12:l6" met="3" type="-+">In t' <rhyme label="b" type="m" corresp="#s12:l3">Wijn-Huys-liefde-wijn</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">O heylich vrolijck <rhyme label="a" type="f">droncken</rhyme>!</l>
        <l id="s13:l2" met="3" type="-+">Soo veylich <rhyme label="a" type="f" corresp="#s13:l1">ingeschoncken</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Der salicheden <rhyme label="b" type="m">Zee</rhyme>!</l>
        <l id="s13:l4" met="3" type="-+">Lief lieflijck sterven <rhyme label="c" type="f">leven</rhyme>!</l>
        <l id="s13:l5" met="3" type="-+">Siel lichaem soo te <rhyme label="c" type="f" corresp="#s13:l4">geven</rhyme></l>
        <l id="s13:l6" met="3" type="-+">In d' ongegronde <rhyme label="b" type="m" corresp="#s13:l3">Zee</rhyme>;</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Leeft, leeft dan Koningh <rhyme label="a" type="f">levet</rhyme>!</l>
        <l id="s14:l2" met="3" type="-+">En in en door my <rhyme label="a" type="f" corresp="#s14:l1">swevet</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Ey dood al wat my <rhyme label="b" type="m">smert</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">Door Iesus <rhyme label="c" type="f">offerhande</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Door Iesus <rhyme label="c" type="f" corresp="#s14:l4">liefde-bande</rhyme></l>
        <l id="s14:l6" met="3" type="-+">O Herte van mijn <rhyme label="b" type="m" corresp="#s14:l3">hert</rhyme>!</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">O looft hem Iesus <rhyme label="a" type="f">Scharen</rhyme>!</l>
        <l id="s15:l2" met="3" type="-+">Oneyndich wilt <rhyme label="a" type="f" corresp="#s15:l1">verklaren</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Sijn groote <rhyme label="b" type="m">Majesteyt</rhyme>.</l>
        <l id="s15:l4" met="3" type="-+">En gy mijn siele <rhyme label="c" type="f">dringet</rhyme></l>
        <l id="s15:l5" met="3" type="-+">In hem, en met haar <rhyme label="c" type="f" corresp="#s15:l4">singet</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Hem loff in <rhyme label="b" type="m" corresp="#s15:l3">eeuwicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
