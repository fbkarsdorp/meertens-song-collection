    <melody>Gezegend zijn mijn liefs bruine ogen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Justus de Harduwijn</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Wercken Gods! die t’aller <rhyme label="a" type="f">tyen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Sijt spieghelen, en <rhyme label="a" type="f" corresp="#s1:l1">schilderyen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Om in al die zijns consten <rhyme label="b" type="m">aerd</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Met grooten wonder te <rhyme label="c" type="f">beseffen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dyns Sceppers lof comt nu <rhyme label="c" type="f" corresp="#s1:l4">verheffen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En maecken dien allom <rhyme label="b" type="m" corresp="#s1:l3">vermaerd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Lichaeme-loose <rhyme label="a" type="f">Inghel-schaeren</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Wesende Godts ghetrouw <rhyme label="a" type="f" corresp="#s2:l1">dienaren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hemelen die hy heft <rhyme label="b" type="m">ghesticht</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Waeters gheronnen in <rhyme label="c" type="f">cristaele</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Boven des Lochts ghesterde <rhyme label="c" type="f" corresp="#s2:l4">saele</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Van Godt te loven niet en <rhyme label="b" type="m" corresp="#s2:l3">swicht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ghy Hemel-crachten, wiens <rhyme label="a" type="f">in-vloeyen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Hier alle dinck doet weldigh <rhyme label="a" type="f" corresp="#s3:l1">groeyen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ghy sterren, blomkens vande <rhyme label="b" type="m">Locht</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Ghy gulde Sonn’, ghy silver <rhyme label="c" type="f">Maene</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Verlichtende dees aerdsche <rhyme label="c" type="f" corresp="#s3:l4">baene</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Door u-lier sy Godt lof <rhyme label="b" type="m" corresp="#s3:l3">aenbrocht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Coel-soeten douw, vruchtbaeren <rhyme label="a" type="f">reghen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Gunt uwen Godt hier allen <rhyme label="a" type="f" corresp="#s4:l1">zeghen</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Windigh gheblas, dat al <rhyme label="b" type="m">beroert</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Vier, ende vlam licht van <rhyme label="c" type="f">nature</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Hit, ende couw, tot alder <rhyme label="c" type="f" corresp="#s4:l4">hure</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Sijn Zeghe-lof ten Hemel <rhyme label="b" type="m" corresp="#s4:l3">voert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Mist, ende rijm, smuyckende <rhyme label="a" type="f">dompen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dicke ghestolde <rhyme label="a" type="f" corresp="#s5:l1">waeter-clompen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Snee die in vlocken <rhyme label="b" type="m">neder-rijst</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Blixemen snel, swaer <rhyme label="c" type="f">donder-slaeghen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Doncker nachten en claer <rhyme label="c" type="f" corresp="#s5:l4">daeghen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Elck aen den Heer zijn lof <rhyme label="b" type="m" corresp="#s5:l3">bewijst</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dat heel des Weerelts groote <rhyme label="a" type="f">ronde</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Des Heeren lof nu hoogh <rhyme label="a" type="f" corresp="#s6:l1">verconde</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Met elcken heuvel, bergh, en <rhyme label="b" type="m">dal</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Dat oock het gheen hier keest op <rhyme label="c" type="f">d’eerde</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Hem gheve lof naer zijne <rhyme label="c" type="f" corresp="#s6:l4">weerde</rhyme>:</l>
        <l id="s6:l6" met="4" type="-+">Want hy oirsaecker is van <rhyme label="b" type="m" corresp="#s6:l3">al</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Looft hem ghy Zeen, ghy <rhyme label="a" type="f">waeter-vlieten</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Fonteynen claer, die hoogh <rhyme label="a" type="f" corresp="#s7:l1">op-schieten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Wal-visschen grof, met al dat <rhyme label="b" type="m">swemt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Beesten der Aerd wilt hem oock <rhyme label="c" type="f">vieren</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En ghy pluym-rijcke <rhyme label="c" type="f" corresp="#s7:l4">Voghel-dieren</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Met sijnen lof ten Hemel <rhyme label="b" type="m" corresp="#s7:l3">clemt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer en wilt oock hier in niet <rhyme label="a" type="f">slaepen</rhyme>.</l>
        <l id="s8:l2" met="4" type="-+">Ghy menschen naer God’s beeld <rhyme label="a" type="f" corresp="#s8:l1">gheschaepen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Sion hem lof en eere <rhyme label="b" type="m">gheeft</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">En wilt hem oock voor alle <rhyme label="c" type="f">dinghen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Ghehulde Priesters claer <rhyme label="c" type="f" corresp="#s8:l4">uyt-singhen</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Soo langh als gh’op dees aerde <rhyme label="b" type="m" corresp="#s8:l3">leeft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dienaeren Gods wilt hem oock <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En sijnen name all’ eer <rhyme label="a" type="f" corresp="#s9:l1">bewijsen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Ghy die daer volght <rhyme label="b" type="m">gherechticheydt</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Ghy vrij van twist, en van <rhyme label="c" type="f">gheschille</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Ghy goe van inborst en van <rhyme label="c" type="f" corresp="#s9:l4">wille</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Des Heeren lof allom <rhyme label="b" type="m" corresp="#s9:l3">verbreydt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Maer onder dees die Godt <rhyme label="a" type="f">ghedincken</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Laet boven al ons stemmen <rhyme label="a" type="f" corresp="#s10:l1">klincken</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Want Godt ons grootelijck <rhyme label="b" type="m">bemint</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">Nu hy ons lost uyt des dood’s <rhyme label="c" type="f">banden</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Nu ’t Vier ons niet en can <rhyme label="c" type="f" corresp="#s10:l4">ghebranden</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Dat andersins ons had <rhyme label="b" type="m" corresp="#s10:l3">verslint</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Laet ons in hem alleen <rhyme label="a" type="f">verblijen</rhyme>:</l>
        <l id="s11:l2" met="4" type="-+">En met den mondt en hert <rhyme label="a" type="f" corresp="#s11:l1">belijen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dat hy God is, en niemant <rhyme label="b" type="m">el</rhyme>.</l>
        <l id="s11:l4" met="4" type="-+">Dit songhen drij Hebreeusche <rhyme label="c" type="f">kinders</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Van vier en vlam cloecke <rhyme label="c" type="f" corresp="#s11:l4">verwinders</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Anania, Azaria, <rhyme label="b" type="m" corresp="#s11:l3">Misaël</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
