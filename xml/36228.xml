    <melody>De mei die komt ons bij zeer blij</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Weest nu ghegroet vriendin // laet <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Compt by ons voor den dagh op dese <rhyme label="b" type="m">baen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wy staen hier op ons plicht // int <rhyme label="c" type="m">licht</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Met eenen alder:schoonsten Mey <rhyme label="b" type="m" corresp="#s1:l2">ghelaen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die heden in het <rhyme label="d" type="m">wout</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ghevonden is in't <rhyme label="d" type="m" corresp="#s1:l5">hout</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Doet open u deure, en laet ons niet <rhyme label="b" type="m" corresp="#s1:l2">staen</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Compt blust ons <rhyme label="e" type="f">verlanghen</rhyme></l>
        <l id="s1:l9" met="2" type="+-">Compt wilt hem <rhyme label="e" type="f" corresp="#s1:l8">ontfanghen</rhyme></l>
        <l id="s1:l10" met="2" type="-+">En siet hem <rhyme label="b" type="m" corresp="#s1:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">T'is eenen Mey seer goet //  en <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Waer aen dat onsen Heer, wt liefde <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Heeft willen syn ghehecht // seer <rhyme label="c" type="m">slecht</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Voor t'menschelijck gheslacht boos en <rhyme label="b" type="m" corresp="#s2:l2">snoot</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hy hinck daer aen <rhyme label="d" type="m">vertoont</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Door-gheesselt en <rhyme label="d" type="m" corresp="#s2:l5">door-croont</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Door-naeghelt in handen en voeten heel <rhyme label="b" type="m" corresp="#s2:l2">bloot</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Syn leden <rhyme label="e" type="f">ghebroken</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Syn zijde <rhyme label="e" type="f" corresp="#s2:l8">doorstoken</rhyme></l>
        <l id="s2:l10" met="2" type="-+">Al totter <rhyme label="b" type="m" corresp="#s2:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wy h'en in dees contrey // dien <rhyme label="a" type="m">Mey</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Sien staen al in het wout in dit <rhyme label="b" type="m">saisoen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wy wierden hem ghewaer // een <rhyme label="c" type="m">paer</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Om dat hy was soo schoon in syn <rhyme label="b" type="m" corresp="#s3:l2">faitsoen</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Want d'aerde daer <rhyme label="d" type="m">ontrent</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die ded' wat <rhyme label="d" type="m" corresp="#s3:l5">onghewent</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Haer blommekens, geffekens, looverckens <rhyme label="b" type="m" corresp="#s3:l2">groen</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Heeft sy wt <rhyme label="e" type="f">ghesonden</rhyme></l>
        <l id="s3:l9" met="2" type="+-">Om desen <rhyme label="e" type="f" corresp="#s3:l8">ghevonden</rhyme></l>
        <l id="s3:l10" met="2" type="-+">Eer aen te <rhyme label="b" type="m" corresp="#s3:l2">doen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De voghels in't ghemeyn // seer <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">In veel-der-hande soort vloghen daer <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Elck socht tot syn gheclanck // en <rhyme label="c" type="m">sanck</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Een taxken om aldaer te wesen <rhyme label="b" type="m" corresp="#s4:l2">vry</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Sy songhen daer claer <rhyme label="d" type="m">wt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Elck liet hooren syn <rhyme label="d" type="m" corresp="#s4:l5">fluyt</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">T'was seker om hooren een schoon <rhyme label="b" type="m" corresp="#s4:l2">melody</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Sy volghen al <rhyme label="e" type="f">swieren</rhyme></l>
        <l id="s4:l9" met="2" type="+-">Al singhen al <rhyme label="e" type="f" corresp="#s4:l8">tieren</rhyme></l>
        <l id="s4:l10" met="2" type="-+">Van alle <rhyme label="b" type="m" corresp="#s4:l2">sy</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doen saeghen wy wel ras // wat <rhyme label="a" type="m">t'was</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">En ginghen by dien Mey met eenen <rhyme label="b" type="m">tocht</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Yder bysonders oogh'// die <rhyme label="c" type="m">vloogh'</rhyme>,</l>
        <l id="s5:l4" met="5" type="-+">Naer desen schoonen Mey soo veel sy <rhyme label="b" type="m" corresp="#s5:l2">mocht</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En resolveerden <rhyme label="d" type="m">coen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dien Meyboom wt te <rhyme label="d" type="m" corresp="#s5:l5">doen</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Wy dolven al t'saemen, een yder die <rhyme label="b" type="m" corresp="#s5:l2">vrocht</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Soo dat wy hem <rhyme label="e" type="f">heden</rhyme></l>
        <l id="s5:l9" met="2" type="+-">met al onse <rhyme label="e" type="f" corresp="#s5:l8">leden</rhyme>,</l>
        <l id="s5:l10" met="2" type="-+">H'en me <rhyme label="b" type="m" corresp="#s5:l2">ghebrocht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Orlof compt wt u ste, in <rhyme label="a" type="m">vre</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Aenveert van ons dien Mey, ter deser <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Omhelst hem met een vreught, tot <rhyme label="c" type="m">deught</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">En oock in allen druck, die ghy hier <rhyme label="b" type="m" corresp="#s6:l2">lijdt</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Bewijst hem alle <rhyme label="d" type="m">eer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Duysent en duysent <rhyme label="d" type="m" corresp="#s6:l5">keer</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Jae alle die daeghen soo langhe ghy <rhyme label="b" type="m" corresp="#s6:l2">zijt</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Hy sal u hier <rhyme label="e" type="f">gheven</rhyme></l>
        <l id="s6:l9" met="2" type="+-">Een rust aen u <rhyme label="e" type="f" corresp="#s6:l8">leven</rhyme></l>
        <l id="s6:l10" met="2" type="-+">Sonder <rhyme label="b" type="m" corresp="#s6:l2">respijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
