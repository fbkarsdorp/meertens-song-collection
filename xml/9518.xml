    <melody>Schoon liefje jent zeer excellent</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE soetelijck getrooste <rhyme label="a" type="m">Bruyt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Door toe-segh der <rhyme label="b" type="f">ghenaden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">En heerlijckheyt, gaet wacker <rhyme label="a" type="m" corresp="#s1:l1">uyt</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Vol lovens hingh' de <rhyme label="c" type="m">tongh</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van roem het keeltje <rhyme label="c" type="m" corresp="#s1:l4">songh</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Als die was <rhyme label="b" type="f" corresp="#s1:l2">onbeladen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Terwijlen dat mijn Heer, se <rhyme label="a" type="m">seyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Mijn Heer, de waerde <rhyme label="b" type="f">Koningh</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ter tafel sit, in <rhyme label="a" type="m" corresp="#s2:l1">heerlijckheyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Aen sijne ronde <rhyme label="c" type="m">dis</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Hy by my krachtigh <rhyme label="c" type="m" corresp="#s2:l4">is</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In mijn geringe <rhyme label="b" type="f" corresp="#s2:l2">wooningh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want mijn Nardus, uyt de <rhyme label="a" type="m">bloet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van sijn ghestorte <rhyme label="b" type="f">gaven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Haer lieffelijcken riecken <rhyme label="a" type="m" corresp="#s3:l1">doet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">By een geloovigh <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat heen ghedreven <rhyme label="c" type="m" corresp="#s3:l4">wert</rhyme></l>
        <l id="s3:l6" met="3" type="-+">m Ziele-lust te <rhyme label="b" type="f" corresp="#s3:l2">laven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wanneer ick als een Duyve <rhyme label="a" type="m">kirr'</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Met vyerighe <rhyme label="b" type="f">Gebeden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Is hy ghelijck een bundel <rhyme label="a" type="m" corresp="#s4:l1">Mirr'</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat mijn borsten <rhyme label="c" type="m">scheyt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En op het herte <rhyme label="c" type="m" corresp="#s4:l4">leyt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">In mijne <rhyme label="b" type="f" corresp="#s4:l2">flaeuwigheden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Daer kan gheen soetelijcker <rhyme label="a" type="m">lucht</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van uwe kruyden <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Noch aenghename <rhyme label="a" type="m" corresp="#s5:l1">Cyprus-vrucht</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">T'Engeddi <rhyme label="c" type="m">voort-gebracht</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat ick de troosten <rhyme label="c" type="m" corresp="#s5:l4">acht</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die mijn Ziel <rhyme label="b" type="f" corresp="#s5:l2">ghenesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
