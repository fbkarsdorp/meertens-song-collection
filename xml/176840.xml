    <melody>Ik heb gezien de tijd</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Vergaderen by <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe lieffelijck <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe Christelijcke <rhyme label="a" type="m" corresp="#s1:l1">leen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Met singhen ende <rhyme label="b" type="f" corresp="#s1:l2">lesen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Spreecken, stichten by <rhyme label="b" type="f" corresp="#s1:l2">desen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Tot prijs des Heeren <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">‘t Vergaren in dit <rhyme label="b" type="f" corresp="#s1:l2">wesen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Moet al ghescheyden <rhyme label="c" type="m" corresp="#s1:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soo wy hier present <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Tot stichten ende <rhyme label="b" type="f">leere</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Laet ons t’allen <rhyme label="a" type="m" corresp="#s2:l1">termijn</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Malkaer ghedencken <rhyme label="b" type="f" corresp="#s2:l2">weere</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">In ‘t heylichdom ons <rhyme label="b" type="f" corresp="#s2:l2">Heeren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">‘t Ghebedt neerstich met <rhyme label="c" type="m">vlijt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Gheestelijck in <rhyme label="b" type="f" corresp="#s2:l2">vermeeren</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Het is nu onsen <rhyme label="c" type="m" corresp="#s2:l6">tijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ons wandelinghe <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">In alle ons <rhyme label="b" type="f">hanteeren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ons licht soo lichten <rhyme label="a" type="m" corresp="#s3:l1">moet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat door ons <rhyme label="b" type="f" corresp="#s3:l2">converseeren</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">‘t Christendom mach <rhyme label="b" type="f" corresp="#s3:l2">vermeeren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En datb het zy <rhyme label="c" type="m">ghespoort</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Het heylich volck des <rhyme label="b" type="f" corresp="#s3:l2">Heeren</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Datmen niet anders <rhyme label="c" type="m" corresp="#s3:l6">hoort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Niemant versuym sijn <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Koopt Olye t’uwer <rhyme label="b" type="f">bate</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ons Bruydegom komt <rhyme label="a" type="m" corresp="#s4:l1">subijt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat ghy niet komt te <rhyme label="b" type="f" corresp="#s4:l2">late</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wilt dit in ‘t herte <rhyme label="b" type="f" corresp="#s4:l2">vaten</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dit scheyden nu <rhyme label="c" type="m">gheschiet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Of die dan wort <rhyme label="b" type="f" corresp="#s4:l2">verlaten</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">‘t Lijckt by malkander <rhyme label="c" type="m" corresp="#s4:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als twee zijn op het <rhyme label="a" type="m">Veldt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die scheyden met <rhyme label="b" type="f">beswaren</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">D’een in vreughden <rhyme label="a" type="m" corresp="#s5:l1">ghestelt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">D’ander in pijne <rhyme label="b" type="f" corresp="#s5:l2">varen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Twee op een Meulen <rhyme label="b" type="f" corresp="#s5:l2">malen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Moeten ghescheyden <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">D’een sullen d’Enghelen <rhyme label="b" type="f" corresp="#s5:l2">halen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">D’ander de Heolsche <rhyme label="c" type="m" corresp="#s5:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Oock twee op ‘t bedt <rhyme label="a" type="m">ghepaert</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die sullen moeten <rhyme label="b" type="f">scheyen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">D’een in vreughden <rhyme label="a" type="m" corresp="#s6:l1">vermaert</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En d’ander mach wel <rhyme label="b" type="f" corresp="#s6:l2">schreyen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">De Heere sal oock <rhyme label="b" type="f" corresp="#s6:l2">scheyden</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">De Schaepen <rhyme label="c" type="m">suyverlijck</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Uyt de Bocken <rhyme label="b" type="f" corresp="#s6:l2">gheleyden</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Ter rechter handt soo <rhyme label="c" type="m" corresp="#s6:l6">rijck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die tot der slincker <rhyme label="a" type="m">zijdt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die sullen moeten <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Gaet ghy <rhyme label="a" type="m" corresp="#s7:l1">vermaledijt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">In ‘t eeuwigh vyer <rhyme label="b" type="f" corresp="#s7:l2">verlooren</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">De Schaepen <rhyme label="b" type="f" corresp="#s7:l2">uyt-verkooren</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Sullen ghezeghent <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Mijn Rijck is u te <rhyme label="b" type="f" corresp="#s7:l2">vooren</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Bereyt ten Hemel <rhyme label="c" type="m" corresp="#s7:l6">in</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dit wensch ick al te <rhyme label="a" type="m">saem</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Terwijl wy hier noch <rhyme label="b" type="f">beyden</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Tot een groete <rhyme label="a" type="m" corresp="#s8:l1">bequaem</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">De Heer wil u <rhyme label="b" type="f" corresp="#s8:l2">gheleyden</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Elck wil hem soo <rhyme label="b" type="f" corresp="#s8:l2">bereyden</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Dat wy hier nae <rhyme label="c" type="m">ghelijck</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Komen daer wy niet <rhyme label="b" type="f" corresp="#s8:l2">scheyden</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Met vreughd’ in ‘t <rhyme label="c" type="m" corresp="#s8:l6">Hemelrijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
