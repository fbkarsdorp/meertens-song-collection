  <author>Joannes Six van Chandelier</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wel dien, die, al syn <rhyme label="a" type="f">leeven</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Den Heere vreest, en <rhyme label="b" type="m">mint</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En, in syn weg <rhyme label="a" type="f" corresp="#s1:l1">bedreeven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Steeds wandelt, als syn <rhyme label="b" type="m" corresp="#s1:l2">kind</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Dus geeft uw hand u <rhyme label="c" type="f">eeten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Sie slechs geen arbeid <rhyme label="d" type="m">aan</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Gy zult welsaalig <rhyme label="c" type="f" corresp="#s1:l5">heeten</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En wel zal 't u dan <rhyme label="d" type="m" corresp="#s1:l6">gaan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Uw huisvrouw, zy dies <rhyme label="a" type="f">blyde</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Zal dan zo vruchtbaar <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als, aan uw huisings <rhyme label="a" type="f" corresp="#s2:l1">zyde</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De wy nstok is van <rhyme label="b" type="m" corresp="#s2:l2">wyn</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Uw kinders zullen <rhyme label="c" type="f">groenen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En alle <rhyme label="d" type="m">welgedaan</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Gelyk <rhyme label="c" type="f" corresp="#s2:l5">olyfplantsoenen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Rondom uw taafel <rhyme label="d" type="m" corresp="#s2:l6">staan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Zo seegent, sie, de <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Den man, die recht hem <rhyme label="b" type="m">vreest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hy seegent u met <rhyme label="a" type="f" corresp="#s3:l1">eere</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Uit Zion, door syn <rhyme label="b" type="m" corresp="#s3:l2">Geest</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Aanschouw dus, alle <rhyme label="c" type="f">daagen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Met vreugd, zo lang gy <rhyme label="d" type="m">leeft</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Wat goed syn <rhyme label="c" type="f" corresp="#s3:l5">welbehaagen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Jerusalem al <rhyme label="d" type="m" corresp="#s3:l6">geeft</rhyme>.</l>
      </lg>
    </lg>
  </text>
