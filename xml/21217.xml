    <melody>Laatst was ik met mijn Rozemond</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als men de Wereldt wel <rhyme label="a" type="m">deursiet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Sy is voorwaer doch anders <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Dan hoovaerdy en <rhyme label="b" type="m">dertelheydt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daer op den Mensch sijn sinnen <rhyme label="b" type="m" corresp="#s1:l3">leydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer nae des Heeren Heyligh <rhyme label="a" type="m">Woordt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Wordt nu voortaen niet veel <rhyme label="a" type="m" corresp="#s2:l1">ghehoort</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Daer op het menschelijck <rhyme label="b" type="m">gheslacht</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Voor al wel dient te nemen <rhyme label="b" type="m" corresp="#s2:l3">acht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer laes den Mensch is wel <rhyme label="a" type="m">gherust</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Iae denckt dat hy met dees <rhyme label="a" type="m" corresp="#s3:l1">wellust</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Noch sal verkrijghen tot een <rhyme label="b" type="m">loon</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Des Hemels vreught, en Glory <rhyme label="b" type="m" corresp="#s3:l3">schoon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'t Welck is comtrari en <rhyme label="a" type="m">verkeert</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">Want Godt den Heer sulckx niet <rhyme label="a" type="m" corresp="#s4:l1">begheert</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Mochtans soo is den Mensch <rhyme label="b" type="m">ghesint</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Te leven daer hy rust in <rhyme label="b" type="m" corresp="#s4:l3">vindt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Want sulckx men klaerlijck mercken <rhyme label="a" type="m">mach</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat dit gheschiedt van dagh tot <rhyme label="a" type="m" corresp="#s5:l1">dagh</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maer nae het schoonste schoon <rhyme label="b" type="m">Lust-hof</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Den Mensche steldt sijn sinnen <rhyme label="b" type="m" corresp="#s5:l3">of</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
