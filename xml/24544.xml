<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24544</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag translation="devotional song">devoot lied</tag>
    </tags>
    <melody>Ik stond op hoge bergen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Ic sie heer Jhesus <rhyme label="a" type="f">hangen</rhyme></l>
        <l id="s1:l2" met="3" type="+-">in pynen alsoe swaer <rhyme label="b" type="m">verdriet</rhyme></l>
        <l id="s1:l3" met="3" type="+-">hy heuet doer my <rhyme label="c" type="f">geleden</rhyme></l>
        <l id="s1:l4" met="3" type="+-">dat in myn hertken <rhyme label="b" type="m" corresp="#s1:l2">steet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Hy ist die daer <rhyme label="a" type="f">spreket</rhyme></l>
        <l id="s2:l2" met="3" type="+-">dochter com weder tot <rhyme label="b" type="m">my</rhyme></l>
        <l id="s2:l3" met="3" type="+-">van alle dinen <rhyme label="c" type="f">sunden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">wil ick di maken <rhyme label="b" type="m" corresp="#s2:l2">vry</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Hy ist die my <rhyme label="a" type="f">dwynget</rhyme></l>
        <l id="s3:l2" met="3" type="+-">ende my niet rusten en <rhyme label="b" type="m">laet</rhyme></l>
        <l id="s3:l3" met="3" type="+-">dat is die mynne <rhyme label="c" type="f">Jhesus</rhyme></l>
        <l id="s3:l4" met="3" type="+-">die in myn herte <rhyme label="b" type="m" corresp="#s3:l2">staet</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Van vrenden ende van <rhyme label="a" type="f">maghen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">en heb ic anders <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s4:l3" met="3" type="+-">dan armoede ende <rhyme label="c" type="f">ellende</rhyme></l>
        <l id="s4:l4" met="3" type="+-">ende mennych swaer <rhyme label="b" type="m" corresp="#s4:l2">verdriet</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Daer om wil ic sie <rhyme label="a" type="f">laten</rhyme></l>
        <l id="s5:l2" met="3" type="+-">ende Jhesum sueken <rhyme label="b" type="m">guet</rhyme></l>
        <l id="s5:l3" met="3" type="+-">ic wil my seluen <rhyme label="c" type="f">laten</rhyme></l>
        <l id="s5:l4" met="3" type="+-">ende in swaren stryde <rhyme label="b" type="m" corresp="#s5:l2">staen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Die stryt die is soe <rhyme label="a" type="f">groet</rhyme></l>
        <l id="s6:l2" met="3" type="+-">die brenget dat lichaem ter <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s6:l3" met="3" type="+-">maria ende alle <rhyme label="c" type="f">hiligen</rhyme></l>
        <l id="s6:l4" met="3" type="+-">helpen ons in sulker <rhyme label="b" type="m" corresp="#s6:l2">noet</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
