    <melody>Schoonste nimf van het woud</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ghy die soo geduyrigh <rhyme label="a" type="m">slaaft</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Loopt en <rhyme label="a" type="m" corresp="#s1:l1">draaft</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Om veel schatten op te <rhyme label="b" type="f">garen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En niet sorget voor het <rhyme label="c" type="m">lest</rhyme></l>
        <l id="s1:l5" met="2" type="+-">En het <rhyme label="c" type="m" corresp="#s1:l4">best</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dat de Ziele wel mach <rhyme label="b" type="f" corresp="#s1:l3">varen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Siet de dwasen <rhyme label="a" type="m">Rijkke-man</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Doch eens <rhyme label="a" type="m" corresp="#s2:l1">an</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die sijn opperste <rhyme label="b" type="f">behagen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die sijn hooghste wensch en <rhyme label="c" type="m">vreught</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">En <rhyme label="c" type="m" corresp="#s2:l4">geneught</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Op den rijkdom had’ <rhyme label="b" type="f" corresp="#s2:l3">geslagen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ziele, seyd’ hy, weest <rhyme label="a" type="m">gerust</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Doet u <rhyme label="a" type="m" corresp="#s3:l1">lust</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Maakt u hooft geen grijse <rhyme label="b" type="f">haren</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Want ghy hebt tot u <rhyme label="c" type="m">gevoegh</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Goedts <rhyme label="c" type="m" corresp="#s3:l4">genoegh</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Wel versien voor veele <rhyme label="b" type="f" corresp="#s3:l3">Iaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maar wat seyd’ de Groote <rhyme label="a" type="m">Godt</rhyme>?</l>
        <l id="s4:l2" met="2" type="+-">O! ghy <rhyme label="a" type="m" corresp="#s4:l1">Sot</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dese nacht sal sonder <rhyme label="b" type="f">beyden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dese nacht soo sal de <rhyme label="c" type="m">Doodt</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Met een <rhyme label="c" type="m" corresp="#s4:l4">stoot</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Ziel en lichaam komen <rhyme label="b" type="f" corresp="#s4:l3">scheyden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dat ghy nu hebt <rhyme label="a" type="m">opgeleyt</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">En <rhyme label="a" type="m" corresp="#s5:l1">bereyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Arme dwaas, voor wie sal ’t <rhyme label="b" type="f">wesen</rhyme>?</l>
        <l id="s5:l4" met="4" type="+-">Siet, dus kan de hooghste <rhyme label="c" type="m">staat</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">’t Minste <rhyme label="c" type="m" corresp="#s5:l4">quaat</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Van de Ziele niet <rhyme label="b" type="f" corresp="#s5:l3">genesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Is t dat Godt u geldt en <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-"><rhyme label="a" type="m" corresp="#s6:l1">Overvloet</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Hier op aarde komt te <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Seght hem al uw’ leven <rhyme label="c" type="m">lank</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Lof en <rhyme label="c" type="m" corresp="#s6:l4">dank</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Sonder vast daar aan te <rhyme label="b" type="f" corresp="#s6:l3">kleven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dat ghy ook misdadigh <rhyme label="a" type="m">geeft</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Die niet <rhyme label="a" type="m" corresp="#s7:l1">heeft</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Die met kommer is <rhyme label="b" type="f">behangen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Ghy sult weder vroegh en <rhyme label="c" type="m">spa</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">En hier <rhyme label="c" type="m" corresp="#s7:l4">na</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Duysent-fout van Godt <rhyme label="b" type="f" corresp="#s7:l3">ontfanggen</rhyme>.</l>
      </lg>
    </lg>
  </text>
