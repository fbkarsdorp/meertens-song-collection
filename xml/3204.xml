    <melody>Wat baat der nijders arglist</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE Wereldt is gheheel <rhyme label="a" type="m">verwart</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En overstulpt door vreemde <rhyme label="b" type="f">driften</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Men kant met macht, hart tegen <rhyme label="a" type="m" corresp="#s1:l1">hart</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Door sin-begrijp, en <rhyme label="b" type="f" corresp="#s1:l2">reden-schiften</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Maer vaeck deur bitze nijdt en <rhyme label="c" type="m">twist</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Soo wordt de ootmoedt heel <rhyme label="c" type="m" corresp="#s1:l5">ghemist</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Elck vat den andren aen een <rhyme label="a" type="m">woort</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En doemt hem met spitsvonde <rhyme label="b" type="f">streecken</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">En daer goedt onderwijs <rhyme label="a" type="m" corresp="#s2:l1">behoort</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daer laten sy 't met morren <rhyme label="b" type="f" corresp="#s2:l2">steecken</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Een woort, een flits die wordt <rhyme label="c" type="m">geklooft</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En waerheydt sietmen over 't <rhyme label="c" type="m" corresp="#s2:l5">hooft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit wordt alleenich niet <rhyme label="a" type="m">gedaen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">In stucken die 't Gheloof <rhyme label="b" type="f">betreffen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">'t Gun yder vast wil houden <rhyme label="a" type="m" corresp="#s3:l1">staen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En tot 'et hooghste toe <rhyme label="b" type="f" corresp="#s3:l2">verheffen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Maer van een kort of langhe <rhyme label="c" type="m">tuyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Daer rijsen groote Boecken <rhyme label="c" type="m" corresp="#s3:l5">uyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daer komen Spieghels voor den <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Daer yder wordt genoodt <rhyme label="b" type="f">t'aenschouwen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Dat elck wel locken draghen <rhyme label="a" type="m" corresp="#s4:l1">mach</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Soo wel de Mannen als de <rhyme label="b" type="f" corresp="#s4:l2">Vrouwen</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Een ander wederom <rhyme label="c" type="m">begheert</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dat Mannen hayr dient <rhyme label="c" type="m" corresp="#s4:l5">afgescheert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Daer haeltmen sulcke wacker <rhyme label="a" type="m">deur</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die 't korte Crol den mensch <rhyme label="b" type="f">aenprijsen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Het wordt genaemt een lap en <rhyme label="a" type="m" corresp="#s5:l1">leur</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Een blaeuw, en bot, en kael <rhyme label="b" type="f" corresp="#s5:l2">bewijsen</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Met seydt dat, jae, die langhe <rhyme label="c" type="m">Klis</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Den Mensch tot pronck geschoncken <rhyme label="c" type="m" corresp="#s5:l5">is</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer 't waer (vertrouw ick) wel so <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat yder pooghde recht te <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Het soude menich vroom <rhyme label="a" type="m" corresp="#s6:l1">ghemoedt</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Een Hart- en Ziel-vernoeghen <rhyme label="b" type="f" corresp="#s6:l2">geven</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Maer 't is verloren <rhyme label="c" type="m">afghepreeckt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dat soo in't hart ghewortelt <rhyme label="c" type="m" corresp="#s6:l5">steeckt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
