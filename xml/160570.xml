<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>160570</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Psalm 118 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk kan, o Godt! my niet <rhyme label="a" type="f">vernoegen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ten sy ghy in mijn herte <rhyme label="b" type="m">woont</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Mijn Ziele moet gestadigh <rhyme label="a" type="f" corresp="#s1:l1">wroegen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als ghy my niet u gunst <rhyme label="b" type="m" corresp="#s1:l2">betoondt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al had' ick al des Wereldts <rhyme label="a" type="f">goeden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En was verrijckt met staet en <rhyme label="b" type="m">eer</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Dat soud' mijn quellingh niet <rhyme label="a" type="f" corresp="#s2:l1">verhoeden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Soo ick niet had' u gunst, o <rhyme label="b" type="m" corresp="#s2:l2">Heer</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ghy kont alleen my best <rhyme label="a" type="f">vermaecken</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ghy zijt mijn vreught en <rhyme label="b" type="m">saligheydt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Och! kond' ick staeg de soetheyd <rhyme label="a" type="f" corresp="#s3:l1">smaken</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Van uws geests <rhyme label="b" type="m" corresp="#s3:l2">tegenwoordigheydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Treckt nu tot u Heer, al mijn <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Want ghy alleen mijn Ziel <rhyme label="b" type="m">vernoeght</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ick wil altijdt voor 't best <rhyme label="a" type="f" corresp="#s4:l1">beminnen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">'t Sy, wat het zy, dat ghy <rhyme label="b" type="m" corresp="#s4:l2">toevoeght</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Al wat my lief'lijck schijnt te <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En dat u niet is <rhyme label="b" type="m">aengenaem</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Laet my dit, meed' van herten <rhyme label="a" type="f" corresp="#s5:l1">vresen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Als voor mijn Ziel heel <rhyme label="b" type="m" corresp="#s5:l2">onbequaem</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Al wat ick in voorleden <rhyme label="a" type="f">tijden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Als onbehoorlijck heb <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Och! Laet ick dat nu heel <rhyme label="a" type="f" corresp="#s6:l1">vermijden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En volgen steeds uw's geests <rhyme label="b" type="m" corresp="#s6:l2">vermaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och! laet die altijdt in my <rhyme label="a" type="f">woonen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Hy is mijn heyl, mijn troost, mijn <rhyme label="b" type="m">vreught</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Wilt my Heer, u wercke <rhyme label="a" type="f" corresp="#s7:l1">kroonen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Laet uyt my schijnen uwe <rhyme label="b" type="m" corresp="#s7:l2">deught</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laet ghy my Heer, genoeghsaem <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Mijn schat, mijn staet, mijn hooghste <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Laet my voor dit of dat niet <rhyme label="a" type="f" corresp="#s8:l1">vreesen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Als 't geene dat ghy haet, o <rhyme label="b" type="m" corresp="#s8:l2">Heer</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
