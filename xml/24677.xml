    <melody>Mij verwondert bovenmate</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">My verwondert boven <rhyme label="a" type="f">maten</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Hoe dat enich mensch mach <rhyme label="a" type="f" corresp="#s1:l1">laten</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Versuchten waerlic <rhyme label="b" type="m">ymmermeer</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Als hi denct dat hi moet <rhyme label="c" type="f">gheven</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Reden corts van al sijn <rhyme label="c" type="f" corresp="#s1:l4">leven</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Den strenghen rechter, ewich <rhyme label="b" type="m" corresp="#s1:l3">heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Och die seker waer <rhyme label="a" type="f">venite</rhyme></l>
        <l id="s2:l2" met="4" type="+-">End verlost van dat woert <rhyme label="a" type="f" corresp="#s2:l1">ite</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Dat wisen sel der hellen <rhyme label="b" type="m">pat</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Als hi ons sel doen <rhyme label="c" type="f">verrisen</rhyme></l>
        <l id="s2:l5" met="4" type="+-">En na ons verdienten <rhyme label="c" type="f" corresp="#s2:l4">wisen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Hier neer int dal van <rhyme label="b" type="m" corresp="#s2:l3">Josaphat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die moecht vruechdelicke <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Mer na dat ic vijnd <rhyme label="a" type="f" corresp="#s3:l1">bescreven</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Van ons en is des nyemant <rhyme label="b" type="m">kont</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Of hi weerdich is Gods <rhyme label="c" type="f">mynne</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Of ghehaet van Goots <rhyme label="c" type="f" corresp="#s3:l4">ghesynne</rhyme>.</l>
        <l id="s3:l6" met="4" type="-+">Dus moet wi vresen talre <rhyme label="b" type="m" corresp="#s3:l3">stont</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Oec ist salich den die <rhyme label="a" type="f">vresen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Want si sullen sijn <rhyme label="a" type="f" corresp="#s4:l1">ghenesen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Van allen vrees seer <rhyme label="b" type="m">cortelijc</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Als die heer sel neder <rhyme label="c" type="f">comen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Om te troesten end <rhyme label="c" type="f" corresp="#s4:l4">verdoemen</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Soet heeft verdient een <rhyme label="b" type="m" corresp="#s4:l3">yghelijc</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Och die dan sel sijn <rhyme label="a" type="f">verloren</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Mit wat vresen sel hi <rhyme label="a" type="f" corresp="#s5:l1">horen</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">'Gaet wech van my <rhyme label="b" type="m">vermalendijt</rhyme></l>
        <l id="s5:l4" met="4" type="+-">In dat ewich vuer der <rhyme label="c" type="f">hellen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Hem bereyt mit sijn <rhyme label="c" type="f" corresp="#s5:l4">ghesellen</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Die gi ter werrelt hebt <rhyme label="b" type="m" corresp="#s5:l3">belijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dicwil heb di mit u <rhyme label="a" type="f">oghen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Groten hongher my sien <rhyme label="a" type="f" corresp="#s6:l1">doghen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Nochtans heb di my nijt <rhyme label="b" type="m">ghesaeft</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Des gelijc heb ic <rhyme label="c" type="f">gheleden</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Groten dorst mit <rhyme label="c" type="f" corresp="#s6:l4">bitterheden</rhyme></l>
        <l id="s6:l6" met="4" type="-+">End gi en hebt my nijt <rhyme label="b" type="m" corresp="#s6:l3">ghelaeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Oec in ander veel <rhyme label="a" type="f">verdrieten</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Nye moch ic u troest <rhyme label="a" type="f" corresp="#s7:l1">genieten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dus gaet van my <rhyme label="b" type="m">vermalendijt</rhyme></l>
        <l id="s7:l4" met="4" type="+-">In dat ewich vuer der <rhyme label="c" type="f">hellen</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Hem bereyt mit sijn <rhyme label="c" type="f" corresp="#s7:l4">ghesellen</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Die gi ter werrelt hebt <rhyme label="b" type="m" corresp="#s7:l3">belijt</rhyme>.'</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Och hoe sel die mensch dan <rhyme label="a" type="f">claghen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">End mit groter anxte <rhyme label="a" type="f" corresp="#s8:l1">vraghen</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">'Och heer, wanneer is dit <rhyme label="b" type="m">gesciet</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Dat ic u dus heb sien <rhyme label="c" type="f">liden</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Hongher, dorst tot allen <rhyme label="c" type="f" corresp="#s8:l4">tiden</rhyme></l>
        <l id="s8:l6" met="4" type="-+">End nijt ghetroest in u <rhyme label="b" type="m" corresp="#s8:l3">verdriet</rhyme>?'</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">So na datter staet <rhyme label="a" type="f">ghescreven</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Sel god dese antwert <rhyme label="a" type="f" corresp="#s9:l1">gheven</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">'Voerwaer, voerwaer, ic segghe <rhyme label="b" type="m">di</rhyme>:</l>
        <l id="s9:l4" met="4" type="+-">Also lang gijs een die <rhyme label="c" type="f">mynste</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Mijnre nijt en deet of <rhyme label="c" type="f" corresp="#s9:l4">gonste</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">So lang oec nijt en deed gijs <rhyme label="b" type="m" corresp="#s9:l3">my</rhyme>.'</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Och hoe sel hi dan <rhyme label="a" type="f">beclaghen</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Al sijn weerlicken hier <rhyme label="a" type="f" corresp="#s10:l1">daghen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die hi mit weelden heeft <rhyme label="b" type="m">verdaen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Daer hi mocht in tewich <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s10:l5" met="4" type="+-">Hebben lichtelic <rhyme label="c" type="f" corresp="#s10:l4">vercreghen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Had hi die weelden <rhyme label="b" type="m" corresp="#s10:l3">wederstaen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Oec als hi dan siet <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Al die gheen die in haer <rhyme label="a" type="f" corresp="#s11:l1">leven</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Om Jhesus wille sijn <rhyme label="b" type="m">gequelt</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Sel hi segghen sijn <rhyme label="c" type="f">ghesellen</rhyme></l>
        <l id="s11:l5" met="4" type="+-">Die mit hem dan gaen ter <rhyme label="c" type="f" corresp="#s11:l4">hellen</rhyme>:</l>
        <l id="s11:l6" met="4" type="-+">'O siet, hoe sijn dees nu <rhyme label="b" type="m" corresp="#s11:l3">ghetelt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Dit sijn sy, die wy <rhyme label="a" type="f">belachten</rhyme>.</l>
        <l id="s12:l2" met="4" type="+-">Sot waer sy in ons <rhyme label="a" type="f" corresp="#s12:l1">ghedachten</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Aensiet hoe dat nu is <rhyme label="b" type="m">muteert</rhyme>.</l>
        <l id="s12:l4" met="4" type="+-">Kijnder Goots sijn sy <rhyme label="c" type="f">gherekent</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">In des levens boec <rhyme label="c" type="f" corresp="#s12:l4">gheteykent</rhyme></l>
        <l id="s12:l6" met="4" type="-+">End mitten heylighen <rhyme label="b" type="m" corresp="#s12:l3">gheeert</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Wy onsinnich menschen <rhyme label="a" type="f">waenden</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Als wi op haer leven <rhyme label="a" type="f" corresp="#s13:l1">raemden</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Dat al haer leven was <rhyme label="b" type="m">verwoet</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Want sy van haer goet den <rhyme label="c" type="f">armen</rhyme></l>
        <l id="s13:l5" met="4" type="+-">Vrilic deylden sonder <rhyme label="c" type="f" corresp="#s13:l4">karmen</rhyme></l>
        <l id="s13:l6" met="4" type="-+">End leden selven dicwijl <rhyme label="b" type="m" corresp="#s13:l3">noet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Nu ochlacy end <rhyme label="a" type="f">ocharmen</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">God en wil ons nijt <rhyme label="a" type="f" corresp="#s14:l1">ontfermen</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Want des nijt en wouden <rhyme label="b" type="m">doen</rhyme>.</l>
        <l id="s14:l4" met="4" type="+-">Nijt of weynich wy hem <rhyme label="c" type="f">gaven</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">Nochtans had wi grote <rhyme label="c" type="f" corresp="#s14:l4">haven</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Dus is die hel nu onse <rhyme label="b" type="m" corresp="#s14:l3">loen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Och, nu sijn wi al <rhyme label="a" type="f">verloren</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Ende dese sijn <rhyme label="a" type="f" corresp="#s15:l1">vercoren</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Die wi haer leven waenden <rhyme label="b" type="m">quaet</rhyme>.</l>
        <l id="s15:l4" met="4" type="+-">Och dat wy ye sijn <rhyme label="c" type="f">gheboren</rhyme>.</l>
        <l id="s15:l5" met="4" type="+-">Nummermeer sel ons god <rhyme label="c" type="f" corresp="#s15:l4">horen</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">90 Wat wi veel bidden, tis te <rhyme label="b" type="m" corresp="#s15:l3">laat</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Wat baet doen ons nu dees <rhyme label="a" type="f">drie</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Scat, solaes end <rhyme label="a" type="f" corresp="#s16:l1">hoverdie</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Mit ander werlts <rhyme label="b" type="m">ydelheyt</rhyme>.</l>
        <l id="s16:l4" met="4" type="+-">Och hoe wel soud ons nu <rhyme label="c" type="f">comen</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">Had wi daer voer <rhyme label="c" type="f" corresp="#s16:l4">aenghenomen</rhyme></l>
        <l id="s16:l6" met="4" type="-+">Druc, armoy mit <rhyme label="b" type="m" corresp="#s16:l3">oetmoedicheyt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">O vermalendijt moet <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s17:l2" met="4" type="+-">Al die my hebt <rhyme label="a" type="f" corresp="#s17:l1">aenghepresen</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Der werlts vruechd, haer scat, haer <rhyme label="b" type="m">goet</rhyme>.</l>
        <l id="s17:l4" met="4" type="+-">Lacy, dat heeft my <rhyme label="c" type="f">bedroghen</rhyme></l>
        <l id="s17:l5" met="4" type="+-">Ende yamerlic <rhyme label="c" type="f" corresp="#s17:l4">ghetoghen</rhyme></l>
        <l id="s17:l6" met="4" type="-+">Van tewich leven totter <rhyme label="b" type="m" corresp="#s17:l3">doot</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">O vermalendide <rhyme label="a" type="f">daghen</rhyme></l>
        <l id="s18:l2" met="4" type="+-">Daer in worden nu <rhyme label="a" type="f" corresp="#s18:l1">ghedraghen</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Solaes des werrelts <rhyme label="b" type="m">ymmermeer</rhyme>.</l>
        <l id="s18:l4" met="4" type="+-">Twaer my beter <rhyme label="c" type="f">ongheboren</rhyme></l>
        <l id="s18:l5" met="4" type="+-">Dan ic dus moet sijn <rhyme label="c" type="f" corresp="#s18:l4">verloren</rhyme></l>
        <l id="s18:l6" met="4" type="-+">Ter hellen ewich bernen <rhyme label="b" type="m" corresp="#s18:l3">zeer</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Ay, nu sie ic dat die <rhyme label="a" type="f">armen</rhyme></l>
        <l id="s19:l2" met="4" type="+-">Dien ic dicwijl hoerde <rhyme label="a" type="f" corresp="#s19:l1">karmen</rhyme></l>
        <l id="s19:l3" met="4" type="-+">My souden trouwelic <rhyme label="b" type="m">bistaen</rhyme>.</l>
        <l id="s19:l4" met="4" type="+-">Mer ter werlt ic <rhyme label="c" type="f">ocharmen</rhyme></l>
        <l id="s19:l5" met="4" type="+-">Haer end woud ic nijt <rhyme label="c" type="f" corresp="#s19:l4">ontfermen</rhyme>.</l>
        <l id="s19:l6" met="4" type="-+">Dus laet sy my oec nu <rhyme label="b" type="m" corresp="#s19:l3">begaen</rhyme>.'</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">O ghi die mijns raets wilt <rhyme label="a" type="f">pleghen</rhyme>,</l>
        <l id="s20:l2" met="4" type="+-">Wilt die vrees doch in u <rhyme label="a" type="f" corresp="#s20:l1">weghen</rhyme>.</l>
        <l id="s20:l3" met="4" type="-+">Ghedenct den armen in haer <rhyme label="b" type="m">noot</rhyme>.</l>
        <l id="s20:l4" met="4" type="+-">Coemt hem vrilic nu te <rhyme label="c" type="f">baten</rhyme>.</l>
        <l id="s20:l5" met="4" type="+-">Nummermeer sel u god <rhyme label="c" type="f" corresp="#s20:l4">laten</rhyme></l>
        <l id="s20:l6" met="4" type="-+">Van tewich leven gaen ter <rhyme label="b" type="m" corresp="#s20:l3">doot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
