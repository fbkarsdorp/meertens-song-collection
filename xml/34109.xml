  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Amarillis door u <rhyme label="a" type="f">ooghen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ghy myn herte schier <rhyme label="b" type="m">vermoort</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Laet myn traenen u toch <rhyme label="a" type="f" corresp="#s1:l1">booghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Myne suchtjens toch <rhyme label="b" type="m" corresp="#s1:l2">aen-hoort</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Al u lonckxkens dat zyn <rhyme label="a" type="f">schichten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die ghy in myn borste <rhyme label="b" type="m">plant</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wilt myn smerten dan <rhyme label="a" type="f" corresp="#s2:l1">verlichten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Eer myn herte heel <rhyme label="b" type="m" corresp="#s2:l2">verbrant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Waer-om als ick by u <rhyme label="a" type="f">comen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Vluchte ghy soo snel van <rhyme label="b" type="m">my</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Self de rotsen in de <rhyme label="a" type="f" corresp="#s3:l1">stroomen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Hebben meer ghevoel als <rhyme label="b" type="m" corresp="#s3:l2">ghy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Cander in u ziele <rhyme label="a" type="f">woonen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Al-soo grooten <rhyme label="b" type="m">stuerigheyt</rhyme>?</l>
        <l id="s4:l3" met="4" type="+-">Dat ghy gheene min wilt <rhyme label="a" type="f" corresp="#s4:l1">thoonen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Aen die u soo vierigh <rhyme label="b" type="m" corresp="#s4:l2">vryt</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Gunt my maer voor al myn <rhyme label="a" type="f">smerte</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Eenen kus van uwen <rhyme label="b" type="m">mont</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Soo sult ghy u dienaers <rhyme label="a" type="f" corresp="#s5:l1">herte</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Maecken t'eenemael <rhyme label="b" type="m" corresp="#s5:l2">ghesont</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Amaril, Princes vol <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Uwe slaef valt u te <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ick verhoop dat sal <rhyme label="a" type="f" corresp="#s6:l1">verkeeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Al deÃªs suerigheyt in't <rhyme label="b" type="m" corresp="#s6:l2">soet</rhyme>.</l>
      </lg>
    </lg>
  </text>
