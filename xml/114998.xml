  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHeeft my u te <rhyme label="a" type="f">ghenieten</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Die bant mijn <rhyme label="a" type="f" corresp="#s1:l1">verdrieten</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Die't hert my <rhyme label="b" type="m">verblijdt</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">O mijn soet <rhyme label="b" type="m" corresp="#s1:l3">jolijt</rhyme>!</l>
        <l id="s1:l5" met="4" type="+-">Naer u verlangh ick te <rhyme label="c" type="m">seer</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Mijn droevigh hert troost, soetsten <rhyme label="c" type="m" corresp="#s1:l5">Heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">U schoonheydt my doet <rhyme label="a" type="f">blaecken</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Van liefde doet <rhyme label="a" type="f" corresp="#s2:l1">haecken</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Om by u te <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Die ick derv' in <rhyme label="b" type="m" corresp="#s2:l3">pijn</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Die snack altijdt naer u <rhyme label="c" type="m">licht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dat my u brengh eens in 't <rhyme label="c" type="m" corresp="#s2:l5">ghesicht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">U goedtheydt my doet <rhyme label="a" type="f">branden</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">U gaven zijn <rhyme label="a" type="f" corresp="#s3:l1">banden</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Daer ghy my me <rhyme label="b" type="m">treckt</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Tot u min <rhyme label="b" type="m" corresp="#s3:l3">verweckt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Wanneer sal ick u eens <rhyme label="c" type="m">sien</rhyme>?</l>
        <l id="s3:l6" met="4" type="-+">Die in 't gheloof u ballingh <rhyme label="c" type="m" corresp="#s3:l5">dien</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wanneer sal ick <rhyme label="a" type="f">becomen</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Tot u <rhyme label="a" type="f" corresp="#s4:l1">opghenomen</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">U aenschijn vol <rhyme label="b" type="m">vreught</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">'t Allen eeuw <rhyme label="b" type="m" corresp="#s4:l3">verheught</rhyme>?</l>
        <l id="s4:l5" met="4" type="+-">'t Is my ghecocht met u <rhyme label="c" type="m">bloedt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Vertoeft niet meer, mijn eenigh <rhyme label="c" type="m" corresp="#s4:l5">goedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">g' Hebt my gheheel <rhyme label="a" type="f">doorschoten</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Och waerd' oock <rhyme label="a" type="f" corresp="#s5:l1">ghenoten</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Aen 't hert u doch <rhyme label="b" type="m">jont</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Dat ghy hebt <rhyme label="b" type="m" corresp="#s5:l3">ghewondt</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Nemt uwen roof doch tot <rhyme label="c" type="m">u</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Die sonder u is 't leven <rhyme label="c" type="m" corresp="#s5:l5">mu</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy zijt mijn eenigh <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Ach wilt m'u doch <rhyme label="a" type="f" corresp="#s6:l1">gheven</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Die in druck en <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Sonder u <rhyme label="b" type="m" corresp="#s6:l3">verdwijn</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Comt dan, comt ziel van mijn <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dat levent maeckt, en vry van <rhyme label="c" type="m" corresp="#s6:l5">smert</rhyme>.</l>
      </lg>
    </lg>
  </text>
