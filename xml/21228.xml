    <melody>Hoe zuivere reinheid God behaagt</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ach sondigh Mensch! vol <rhyme label="a" type="m">Hoovaerdy</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Bekeert, 't is meer dan <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En steldt dit leven aen een <rhyme label="a" type="m" corresp="#s1:l1">zy</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maeckt u dees Hooghmoedt <rhyme label="b" type="m" corresp="#s1:l2">quijt</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Want onsen Godt sulck leven <rhyme label="c" type="m">rouwt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En altijdt <rhyme label="d" type="m">wederstaet</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Maer die hem slecht en nedrigh <rhyme label="c" type="m" corresp="#s1:l5">houdt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Krijght voor den Heer <rhyme label="d" type="m" corresp="#s1:l6">ghenaed'</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghelijck men dat kan mercken <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hoe 't ons Naebueren <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Zijn staegh in anghst en zwaer <rhyme label="a" type="m" corresp="#s2:l1">ghequel</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Deur al haer <rhyme label="b" type="m" corresp="#s2:l2">overdaedt</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Want onsen Godt sulck leven <rhyme label="c" type="m">rouwt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En altijdt <rhyme label="d" type="m">wederstaet</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Maer die hem slecht en ned'righ <rhyme label="c" type="m" corresp="#s2:l5">houdt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Krijght voor den Heer <rhyme label="d" type="m" corresp="#s2:l6">ghenaed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hier kan men klaerlijck mercken <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat dit een Voorbeeldt <rhyme label="b" type="m">is</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Daerom wilt u niet langh <rhyme label="a" type="m" corresp="#s3:l1">beraen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Voorwaer het gaet <rhyme label="b" type="m" corresp="#s3:l2">ghewis</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Dat onsen Godt sulck leven <rhyme label="c" type="m">rouwt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En altijdt <rhyme label="d" type="m">wederstaet</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Maer die hem slecht en ned'rig <rhyme label="c" type="m" corresp="#s3:l5">houdt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Krijght voor den Heer <rhyme label="d" type="m" corresp="#s3:l6">ghenaed'</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghelijck men leest van <rhyme label="a" type="m">Sodoma</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En Gomorra die <rhyme label="b" type="m">Stadt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat voor haer was troost noch <rhyme label="a" type="m" corresp="#s4:l1">ghenae</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Want veel pracht in haer <rhyme label="b" type="m" corresp="#s4:l2">sat</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Ach! onsen Godt sulck leven <rhyme label="c" type="m">rouwt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En altijdt <rhyme label="d" type="m">wederstaet</rhyme>:</l>
        <l id="s4:l7" met="4" type="-+">Maer die hem slecht en nedrich <rhyme label="c" type="m" corresp="#s4:l5">houdt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Krijght voor den Heer <rhyme label="d" type="m" corresp="#s4:l6">ghenaed'</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Daerom, o Mensch, wilt nemen <rhyme label="a" type="m">acht</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat sulcks Godt niet <rhyme label="b" type="m">behaeght</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En houdt nu voortaen beter <rhyme label="a" type="m" corresp="#s5:l1">wacht</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Eer 't naemaels wordt <rhyme label="b" type="m" corresp="#s5:l2">beklaeght</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Want onsen Godt sulck leven <rhyme label="c" type="m">rouwt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En altijdt <rhyme label="d" type="m">wederstaet</rhyme>:</l>
        <l id="s5:l7" met="4" type="-+">Maer die hem slecht en nedrifg <rhyme label="c" type="m" corresp="#s5:l5">houdt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Krijght voor den Heer <rhyme label="d" type="m" corresp="#s5:l6">ghenaed'</rhyme>.</l>
      </lg>
    </lg>
  </text>
