<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>187674</id>
    <date>
      <year-start>1681</year-start>
      <year-end>1681</year-end>
    </date>
    <location>
      <orginal-name>alkmaar</orginal-name>
      <standard-name>Alkmaar, The Netherlands</standard-name>
      <coordinates>
        <lon>52.6312592</lon>
        <lat>4.7503798</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Laat ruisen en laat waaien de wind</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">LAat ruiszen en laat waijen de <rhyme label="a" type="m">wind</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van lijden en <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die God van herten vuurig <rhyme label="a" type="m" corresp="#s1:l1">mind</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die en schaad het alles <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Sathan komt met zuur en <rhyme label="a" type="m">zoet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met lijden en met <rhyme label="b" type="m">lust</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Maar een regt Goddelijk <rhyme label="a" type="m" corresp="#s2:l1">gemoed</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat en word niet eens <rhyme label="b" type="m" corresp="#s2:l2">ontrust</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zijn slaagen vallen al-tijd <rhyme label="a" type="m">mis</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">Komt hy met <rhyme label="b" type="m">zoetigheid</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Dat het geen laggens tijd en <rhyme label="a" type="m" corresp="#s3:l1">is</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Word hem weeder <rhyme label="b" type="m" corresp="#s3:l2">voor-geleid</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Komt hy gelijk een leeuw of <rhyme label="a" type="m">beer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Verscheuren goed en <rhyme label="b" type="m">bloed</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Zoo word men vroolijk in den <rhyme label="a" type="m" corresp="#s4:l1">Heer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En men denkt om 't eeuwig <rhyme label="b" type="m" corresp="#s4:l2">goed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Komt hy den vleische smeeken <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Als eenen vriend <rhyme label="b" type="m">quanzuis</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Een Christen kend zijn treeken <rhyme label="a" type="m" corresp="#s5:l1">wel</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Daar-om vlied hy tot het <rhyme label="b" type="m" corresp="#s5:l2">kruis</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Zoekt hy gekijf en groot <rhyme label="a" type="m">geschil</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Een Christen al <rhyme label="b" type="m">toe-geeft</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hy steld zijn wil in Goodes <rhyme label="a" type="m" corresp="#s6:l1">wil</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">'t Loopt zoo veer als 't voeten <rhyme label="b" type="m" corresp="#s6:l2">heeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Een Christen kan daar <rhyme label="a" type="m">over-heen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Maar wat is de <rhyme label="b" type="m">oorzaak</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Hy is met weinig wel te <rhyme label="a" type="m" corresp="#s7:l1">vre'en</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En hy zoekt hier geen <rhyme label="b" type="m" corresp="#s7:l2">vermaak</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Zijn hert en hangd aan geenen <rhyme label="a" type="m">schat</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die dog niet blijven en <rhyme label="b" type="m">kan</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">En heeft hy wat, zoo geeft hy <rhyme label="a" type="m" corresp="#s8:l1">wat</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Maar hy vind 'er hem niet <rhyme label="b" type="m" corresp="#s8:l2">an</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Alleen slaat hy zijn ziele <rhyme label="a" type="m">gaa</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Want als die schaade <rhyme label="b" type="m">lijd</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Zoo agt hy zijn gewin voor <rhyme label="a" type="m" corresp="#s9:l1">scha'e</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En zijn schaade voor <rhyme label="b" type="m" corresp="#s9:l2">profijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wat hoefd een Christelijk <rhyme label="a" type="m">gemoed</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Met zorg te zijn <rhyme label="b" type="m">geplaagd</rhyme>?</l>
        <l id="s10:l3" met="4" type="-+">Hy heeft zoo rijken Vaader <rhyme label="a" type="m" corresp="#s10:l1">goed</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Die voor hem wel zorge <rhyme label="b" type="m" corresp="#s10:l2">draagd</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Gods Engel al ronds-om hem <rhyme label="a" type="m">legt</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Gelijk een sterke <rhyme label="b" type="m">schans</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Op wat manier den Sathan <rhyme label="a" type="m" corresp="#s11:l1">vegt</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Zoo en heet hy dog geen <rhyme label="b" type="m" corresp="#s11:l2">kans</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Zijn lampe staat al-tijd en <rhyme label="a" type="m">brand</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Hy ziet al heen en <rhyme label="b" type="m">weer</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En met de waapens in de <rhyme label="a" type="m" corresp="#s12:l1">hand</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Veld hy zijnen viand <rhyme label="b" type="m" corresp="#s12:l2">neer</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Een Christen slaat niet in de <rhyme label="a" type="m">lugt</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Nog op het <rhyme label="b" type="m">on-gewis</rhyme>;</l>
        <l id="s13:l3" met="4" type="-+">Als hy 't vergankelijk <rhyme label="a" type="m" corresp="#s13:l1">ontvlugt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Vind hy 't geen dat eeuwig <rhyme label="b" type="m" corresp="#s13:l2">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
