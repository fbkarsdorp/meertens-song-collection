  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Soeten <rhyme label="a" type="m">bruydegom</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wanneer sal toch eens <rhyme label="a" type="m" corresp="#s1:l1">om</rhyme></l>
        <l id="s1:l3" met="5" type="-+">Verloopen sijn den tijt die soo langh <rhyme label="b" type="m">toeft</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Want ick en heb gheen <rhyme label="c" type="m">rust</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Voor dat ghy gans <rhyme label="c" type="m" corresp="#s1:l4">uytblust</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Mijn suyver hert en <rhyme label="c" type="m" corresp="#s1:l4">lust</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Vyt desen Kercker <rhyme label="c" type="m" corresp="#s1:l4">wist</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">V liefde noch veel <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Moet vlammen tot mijn <rhyme label="a" type="m" corresp="#s2:l1">eer</rhyme></l>
        <l id="s2:l3" met="5" type="-+">En voeght u gans naer mijnen wil en <rhyme label="b" type="m">wet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Want hoe meer ghy hier <rhyme label="c" type="m">strijdt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Soo sult ghy oock <rhyme label="c" type="m" corresp="#s2:l4">jolijt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hier naer hebben tot <rhyme label="c" type="m" corresp="#s2:l4">strijt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Van't swereldts quaet <rhyme label="c" type="m" corresp="#s2:l4">benijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ey wanneer sal't dan <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat ick sal sonder <rhyme label="a" type="m" corresp="#s3:l1">pijn</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">V hemels wesen eens aenschouwen <rhyme label="b" type="m">puer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wanneer sal u <rhyme label="c" type="m">gheniet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Mijn lijden doen te <rhyme label="c" type="m" corresp="#s3:l4">niet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En slissen mijn <rhyme label="c" type="m" corresp="#s3:l4">verdriet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">d'Welck my op aerdt <rhyme label="c" type="m" corresp="#s3:l4">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Al schenck ick u wat <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Den Kelck vol bitter <rhyme label="a" type="m" corresp="#s4:l1">smert</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">En stel u noch verbeydingh in u <rhyme label="b" type="m">brandt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Denckt dan op mijnder <rhyme label="c" type="m">doot</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Die ick verscheurden <rhyme label="c" type="m" corresp="#s4:l4">bloot</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Heb voor de wereldt <rhyme label="c" type="m" corresp="#s4:l4">snoot</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Gheleden in doots <rhyme label="c" type="m" corresp="#s4:l4">noot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wilt dan o soeten <rhyme label="a" type="m">naem</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Maecken mijn hert <rhyme label="a" type="m" corresp="#s5:l1">bequaem</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Om wel te strijden teghens werelts <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Want mijn hert dorst soo <rhyme label="c" type="m">seer</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Naer u, o schoonsten <rhyme label="c" type="m" corresp="#s5:l4">Heer</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En brant noch meer en <rhyme label="c" type="m" corresp="#s5:l4">meer</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Als ick my tot u <rhyme label="c" type="m" corresp="#s5:l4">keer</rhyme>.</l>
      </lg>
    </lg>
  </text>
