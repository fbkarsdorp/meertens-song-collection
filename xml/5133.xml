<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>5133</id>
    <date>
      <year-start>1924</year-start>
      <year-end>1925</year-end>
    </date>
    <tags>
      <tag translation="Geuzen song">geuzenlied</tag>
    </tags>
    <melody>Naar oostland wil ik varen</melody>
    <categories>
      <category translation="politics and history">politiek en geschiedenis</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ontwaeckt ghy Christen <rhyme label="a" type="f">alle</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Recht wel in deser <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met vreuchden maeckt <rhyme label="a" type="f" corresp="#s1:l1">geschalle</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat ghy ghebooren <rhyme label="b" type="m" corresp="#s1:l2">zijt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Gods woort suyver te <rhyme label="c" type="f">leeren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">En te leven naer Gods <rhyme label="d" type="m">wet</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Antechrist wil dit <rhyme label="c" type="f" corresp="#s1:l5">keeren</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Maer sterck is het Woort des <rhyme label="c" type="f" corresp="#s1:l5">Heeren</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Daer door hy wert <rhyme label="d" type="m" corresp="#s1:l6">verplet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy sit seer hooch <rhyme label="a" type="f">ghedreven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Tusschen twee Zeen <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Een Coningin <rhyme label="a" type="f" corresp="#s2:l1">verheven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Spreeckt hy in sijnen <rhyme label="b" type="m" corresp="#s2:l2">sin</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Siet ick, wie mach my <rhyme label="c" type="f">letten</rhyme>?</l>
        <l id="s2:l6" met="3" type="-+">Mijn ooghen en sullen niet <rhyme label="d" type="m">sien</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Eenich leet my te <rhyme label="c" type="f" corresp="#s2:l5">pletten</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Want men houdt mijn <rhyme label="c" type="f" corresp="#s2:l5">Gesetten</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Al wat ick wil <rhyme label="d" type="m" corresp="#s2:l6">ghebien</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Daerom spreeckt God <rhyme label="a" type="f">almachtigh</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sullen hem plaghen <rhyme label="b" type="m">veel</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Overcomen seer <rhyme label="a" type="f" corresp="#s3:l1">crachtich</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Op eenen dach te <rhyme label="b" type="m" corresp="#s3:l2">deel</rhyme>  ,</l>
        <l id="s3:l5" met="3" type="-+">Doot, droefheyt, hongher, <rhyme label="c" type="f">smerten</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ende werden met vyer <rhyme label="d" type="m">verbrant</rhyme>, :</l>
        <l id="s3:l7" met="3" type="-+">God gheeftet haer int <rhyme label="c" type="f" corresp="#s3:l5">herte</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Al is seer sterck sijn <rhyme label="c" type="f" corresp="#s3:l5">sterte</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Veel stercker is Gods <rhyme label="d" type="m" corresp="#s3:l6">hant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Het woordt van Godt den <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Moetmen hier achten <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Bereyt u alle <rhyme label="a" type="f" corresp="#s4:l1">gader</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Seyt hy, vergelt hem <rhyme label="b" type="m" corresp="#s4:l2">fel</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Mijn leedt wilt aen hem <rhyme label="c" type="f">wreken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Seven vout in sijnen <rhyme label="d" type="m">schoot</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Want so plach hy te <rhyme label="c" type="f" corresp="#s4:l5">spreken</rhyme>:</l>
        <l id="s4:l8" met="3" type="-+">God ben ick sonder <rhyme label="c" type="f" corresp="#s4:l5">ghebreken</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Hier voor gheeft droefheyt <rhyme label="d" type="m" corresp="#s4:l6">groot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mijn volck wilt hem <rhyme label="a" type="f">vergelden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Als hy heeft <rhyme label="b" type="m">ghedoot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Met branden, worghen, <rhyme label="a" type="f" corresp="#s5:l1">schelden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Benautheyt, honghers <rhyme label="b" type="m" corresp="#s5:l2">noot</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Die onder d'Outaer <rhyme label="c" type="f">roepen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die sielen heb ick <rhyme label="d" type="m">verhoort</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Mijn toorn staet nu <rhyme label="c" type="f" corresp="#s5:l5">open</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Laet het den Paus <rhyme label="c" type="f" corresp="#s5:l5">becopen</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Met hanghen, worghen en <rhyme label="d" type="m" corresp="#s5:l6">moort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die sijnen God hier <rhyme label="a" type="f">eerden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Missam int aertsche <rhyme label="b" type="m">prieel</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Daer door sy my <rhyme label="a" type="f" corresp="#s6:l1">verneerden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En creghen tlandt ten <rhyme label="b" type="m" corresp="#s6:l2">deel</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Pispotten  , Monicken, <rhyme label="c" type="f">Papen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ende verkeerden mijnen <rhyme label="d" type="m">naem</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Hier op treckt aen de <rhyme label="c" type="f" corresp="#s6:l5">wapen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Ghy vorsten wilt haer <rhyme label="c" type="f" corresp="#s6:l5">drapen</rhyme> ,</l>
        <l id="s6:l9" met="3" type="-+">Want het is mijn will' <rhyme label="d" type="m" corresp="#s6:l6">bequaem</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ghy Vorsten, <rhyme label="a" type="f">Potentaten</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Rechters op deser <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die Roode Hoer wilt <rhyme label="a" type="f" corresp="#s7:l1">haten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Daer van ghy droncken <rhyme label="b" type="m" corresp="#s7:l2">waert</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Van haer tooverschen <rhyme label="c" type="f">wijne</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Daer door sy u brancht ter <rhyme label="d" type="m">Hel</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Weest ghy nu haer <rhyme label="c" type="f" corresp="#s7:l5">ruijne</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">End maeckt met haer een <rhyme label="c" type="f" corresp="#s7:l5">fijne</rhyme>, :</l>
        <l id="s7:l9" met="3" type="-+">So doet ghy Gods <rhyme label="d" type="m" corresp="#s7:l6">bevel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghy Leeraers, <rhyme label="a" type="f">Predicanten</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ontsiet u niet een <rhyme label="b" type="m">haer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Gods woort met vlijt te <rhyme label="a" type="f" corresp="#s8:l1">planten</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Te leeren <rhyme label="b" type="m" corresp="#s8:l2">openbaer</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Die Basuynen wilt <rhyme label="c" type="f">blasen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Teghens Paus valsche <rhyme label="d" type="m">Leer</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Die hier als arme <rhyme label="c" type="f" corresp="#s8:l5">dwasen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Int leste gras gaen <rhyme label="c" type="f" corresp="#s8:l5">grasen</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Sy moeten vallen ter <rhyme label="d" type="m" corresp="#s8:l6">neer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ghy Christelijcke <rhyme label="a" type="f">Nacy</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hoe condt ghy lijden <rhyme label="b" type="m">hert</rhyme>  ,</l>
        <l id="s9:l3" met="3" type="-+">Dat Christus t'deser <rhyme label="a" type="f" corresp="#s9:l1">spacy</rhyme>  ,</l>
        <l id="s9:l4" met="3" type="-+">So seer vervolghet <rhyme label="b" type="m" corresp="#s9:l2">wert</rhyme>?</l>
        <l id="s9:l5" met="3" type="-+">Is hy u <rhyme label="c" type="f">Capiteyne</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Rept handen en voeten <rhyme label="d" type="m">recht</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Teghen dees Hoer <rhyme label="c" type="f" corresp="#s9:l5">onreyne</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Uus Broeders bloet <rhyme label="c" type="f" corresp="#s9:l5">ghemeyne</rhyme></l>
        <l id="s9:l9" met="3" type="-+">Wreeckt nu als een trou <rhyme label="d" type="m" corresp="#s9:l6">knecht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Daerom comt nu te <rhyme label="a" type="f">samen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Ghy die Christum <rhyme label="b" type="m">bemint</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Den Antichrist <rhyme label="a" type="f" corresp="#s10:l1">beschamen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Datmen hem niet en <rhyme label="b" type="m" corresp="#s10:l2">vint</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Wilt hem van u <rhyme label="c" type="f">verjagen</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Want dit is Gods <rhyme label="d" type="m">ghebodt</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Sijn sonden u <rhyme label="c" type="f" corresp="#s10:l5">mishaghen</rhyme>.</l>
        <l id="s10:l8" met="3" type="-+">Ontfangt oock niet sijn <rhyme label="c" type="f" corresp="#s10:l5">plagen</rhyme>,</l>
        <l id="s10:l9" met="3" type="-+">Hier, en in Duyvels <rhyme label="d" type="m" corresp="#s10:l6">Cot</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ghy Princelijcke <rhyme label="a" type="f">Christen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Wilt dit in danck <rhyme label="b" type="m">ontfaen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Luthrianen, <rhyme label="a" type="f" corresp="#s11:l1">Calvinisten</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Uut liefden ist <rhyme label="b" type="m" corresp="#s11:l2">ghedaen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Wilt den Heer altijdt <rhyme label="c" type="f">beden</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Ic geef dit voor een nieu <rhyme label="d" type="m">maer</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Dat God hem wil <rhyme label="c" type="f" corresp="#s11:l5">vertreden</rhyme></l>
        <l id="s11:l8" met="3" type="-+">En schenden al sijn <rhyme label="c" type="f" corresp="#s11:l5">leden</rhyme></l>
        <l id="s11:l9" met="3" type="-+">In desen nieuwe <rhyme label="d" type="m" corresp="#s11:l6">Jaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
