    <melody>Ik peins om een persoon</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CHristen Broeders <rhyme label="a" type="f">vercoren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die door dat eeuwigh <rhyme label="b" type="m">zaet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wederom zijt <rhyme label="a" type="f" corresp="#s1:l1">geboren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Bevrijdt van 't sondigh <rhyme label="b" type="m" corresp="#s1:l2">quaedt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ghy staet, en gaet in 't licht <rhyme label="c" type="m">eerbaer</rhyme>:</l>
        <l id="s1:l6" met="4" type="-+">Volstandigh zijn, een kleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s1:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghy smaeckt des Heeren <rhyme label="a" type="f">gaven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Boven uyt 'sHemels <rhyme label="b" type="m">pleyn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Om mijn ziele te <rhyme label="a" type="f" corresp="#s2:l1">laven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat goede woordt Godts <rhyme label="b" type="m" corresp="#s2:l2">reyn</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Als een fonteyn, vloeyende <rhyme label="c" type="m">klaer</rhyme>:</l>
        <l id="s2:l6" met="4" type="-+">Volstandigh zijn // een kleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s2:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Des Heeren Gheest <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ghy oock deelachtigh <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De kracht van t'eeuwigh <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die smaeckt ghy met <rhyme label="b" type="m" corresp="#s3:l2">jolijt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Ghy neemt den tijdt, van gracy <rhyme label="c" type="m">waer</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Volstandigh zijn // een kleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s3:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dat geduerigh <rhyme label="a" type="f">gestade</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Eeuwigh nieu <rhyme label="b" type="m">Testament</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ia Godts rechte <rhyme label="a" type="f" corresp="#s4:l1">genade</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daer in staet ghy <rhyme label="b" type="m" corresp="#s4:l2">present</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dus tot den ent, wijckt niet van <rhyme label="c" type="m">haer</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">Volstandigh zijn // een kleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s4:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghy leyt een <rhyme label="a" type="f">wandelinghe</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Godtlijck na Christus <rhyme label="b" type="m">zee</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sonder <rhyme label="a" type="f" corresp="#s5:l1">veranderinge</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In liefden, pays, en <rhyme label="b" type="m" corresp="#s5:l2">vree</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Soo deed' NoÃ« // veel hondert <rhyme label="c" type="m">Iaer</rhyme>:</l>
        <l id="s5:l6" met="4" type="-+">Volstandigh zijn een kleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s5:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy hout vast aen den <rhyme label="a" type="f">ghenen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die onsienelijck <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Alwaer hy hier <rhyme label="a" type="f" corresp="#s6:l1">verschenen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ende saeght hem <rhyme label="b" type="m" corresp="#s6:l2">expres</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Soo deed' Moyses, ghy volghet <rhyme label="c" type="m">naer</rhyme>:</l>
        <l id="s6:l6" met="4" type="-+">Volstandigh zijn // een kleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s6:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">'Tis waer ghy moet hier <rhyme label="a" type="f">draghen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Het kruys op veel <rhyme label="b" type="m">manier</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Maer om soo weynigh <rhyme label="a" type="f" corresp="#s7:l1">daghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Als men moet leven <rhyme label="b" type="m" corresp="#s7:l2">hier</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Zijt goedertier, al vallet <rhyme label="c" type="m">swaer</rhyme>:</l>
        <l id="s7:l6" met="4" type="-+">Volstandigh zijn, een kleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s7:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s7:l5">maer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">V droefheyt kort en <rhyme label="a" type="f">lichte</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die brenght tot uwen <rhyme label="b" type="m">loon</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Boven maten <rhyme label="a" type="f" corresp="#s8:l1">ghewichte</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Een heerlijckheydt seer <rhyme label="b" type="m" corresp="#s8:l2">schoon</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Des levens kroon, o kleyne <rhyme label="c" type="m">schaer</rhyme>:</l>
        <l id="s8:l6" met="4" type="-+">Volstandigh zijn // een kleen <rhyme label="d" type="m">termijn</rhyme></l>
        <l id="s8:l7" met="3" type="+-">Voortaen behoeft u <rhyme label="c" type="m" corresp="#s8:l5">maer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
