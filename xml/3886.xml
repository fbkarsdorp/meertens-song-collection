    <tags>
      <tag standard-name="devoot lied" translation="devotional song">devoot lied</tag>
    </tags>
    <melody>Een ridder en een meisje jong</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Mijn hope / mijn troost / minen <rhyme label="a" type="m">toeuerlaet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat staet aen onsen <rhyme label="b" type="f">heere</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Sijn hope gheeft ons <rhyme label="c" type="m">soeticheyt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Heer God oft ick bi hem <rhyme label="b" type="f" corresp="#s1:l2">ware</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ic heb der werelt so lange <rhyme label="a" type="m">ghedient</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat mi nu rout so <rhyme label="b" type="f">seere</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Haer cierheyt wil ic oerlof <rhyme label="c" type="m">gheuen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En dienen onsen <rhyme label="b" type="f" corresp="#s2:l2">heere</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want sijn minne is so <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ick hope hi en sal mi niet <rhyme label="b" type="f">versmaden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Ic wil tot sijnder scolen <rhyme label="c" type="m">gaen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ende bidden hem <rhyme label="b" type="f" corresp="#s3:l2">ghenade</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Mer doen ic eerst ter scholen <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die schole der godliker <rhyme label="b" type="f">minnen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Die lessen en conde ick gheleeren <rhyme label="c" type="m">nyet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat deden mijn weerlicke <rhyme label="b" type="f" corresp="#s4:l2">sinnen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De eerste lesse diemen mi <rhyme label="a" type="m">gaf</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Was dat ic steruen sou <rhyme label="b" type="f">leeren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">En doen mi alder menschen <rhyme label="c" type="m">af</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En keeren mi tot onsen <rhyme label="b" type="f" corresp="#s5:l2">heere</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sij deden mi mijn cleeder <rhyme label="a" type="m">wt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sij deden mijn hayr <rhyme label="b" type="f">afsniden</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Sij deden mi aen een mantel <rhyme label="c" type="m">ruyt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En leerden mi der oerden <rhyme label="b" type="f" corresp="#s6:l2">getiden</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoe mi doen te moede <rhyme label="a" type="m">was</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dat en sal ic niemant <rhyme label="b" type="f">clagen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Dan hem die inden hemel <rhyme label="c" type="m">woont</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Die salt mi helpen <rhyme label="b" type="f" corresp="#s7:l2">draghen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die dagen waren mi te <rhyme label="a" type="m">lanc</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Snachts en condic niet <rhyme label="b" type="f">gheslapen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Ic dacht so dicke in minen <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Hoe ick dat soude <rhyme label="b" type="f" corresp="#s8:l2">maken</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O here God helpt ghi mi <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">So en mach ict niet <rhyme label="b" type="f">gheliden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Die viant sijn scutten op mi <rhyme label="c" type="m">schiet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Sij quetsen mi aen alle <rhyme label="b" type="f" corresp="#s9:l2">siden</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Mer als ic dencke in minen <rhyme label="a" type="m">gront</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Dat ick die weerelt heb <rhyme label="b" type="f">ghelaten</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Soe verblide ick mi in menigher <rhyme label="c" type="m">stont</rhyme></l>
        <l id="s10:l4" met="3" type="-+">In vruechden bouen <rhyme label="b" type="f" corresp="#s10:l2">maten</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Noyt en dranc ic beter <rhyme label="a" type="m">dranc</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Wt coppen noch wt <rhyme label="b" type="f">scalen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Dan wt Iesus soete <rhyme label="c" type="m">borst</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Och hi gheneest van alle <rhyme label="b" type="f" corresp="#s11:l2">qualen</rhyme></l>
      </lg>
    </lg>
  </text>
