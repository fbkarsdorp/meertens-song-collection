    <melody>Je ne puis éviter</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Verheught u in dees <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Zijt vrolijck, en <rhyme label="a" type="m" corresp="#s1:l1">verblijdt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Maeckt vreught nu en <rhyme label="a" type="m" corresp="#s1:l1">altijdt</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">O Sondaers <rhyme label="b" type="m">al</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Nu ‘t eeuwigh Vaders <rhyme label="c" type="m">saet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hem oock besnijden <rhyme label="c" type="m" corresp="#s1:l5">laet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En komt in Sondaers <rhyme label="c" type="m" corresp="#s1:l5">staet</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">In ‘t <rhyme label="b" type="m" corresp="#s1:l4">Tranen-dal</rhyme>.</l>
        <l id="s1:l9" met="4" type="-+">Om ons te leeren <rhyme label="d" type="m">Ootmoedigheyt</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">De sonde <rhyme label="e" type="f">mijden</rhyme>,</l>
        <l id="s1:l11" met="2" type="+-">Oock af te <rhyme label="e" type="f" corresp="#s1:l10">snijden</rhyme></l>
        <l id="s1:l12" met="2" type="-+"><rhyme label="d" type="m" corresp="#s1:l9">d’Onsuyverheyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Aensiet toch wat hy <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hoe het verstort sijn <rhyme label="a" type="m" corresp="#s2:l1">Bloedt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dit kleyne Kindtje <rhyme label="a" type="m" corresp="#s2:l1">goet</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Uyt Liefd’, niet <rhyme label="b" type="m">noot</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Hoort na de naem van ‘t <rhyme label="c" type="m">Kint</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dat ons soo seer <rhyme label="c" type="m" corresp="#s2:l5">bemint</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Iesus ist datmen <rhyme label="c" type="m" corresp="#s2:l5">vint</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Seer wonder <rhyme label="b" type="m" corresp="#s2:l4">groot</rhyme>.</l>
        <l id="s2:l9" met="4" type="-+">O Naem van wiens, dat Ioël <rhyme label="d" type="m">verklaert</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Al die sal <rhyme label="e" type="f">eeren</rhyme>,</l>
        <l id="s2:l11" met="2" type="+-">Den Naem des <rhyme label="e" type="f" corresp="#s2:l10">Heeren</rhyme>,</l>
        <l id="s2:l12" met="2" type="-+">Sal sijn <rhyme label="d" type="m" corresp="#s2:l9">bewaert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Laet wy met ‘t nieuwe <rhyme label="a" type="m">Iaer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dan vrolijck volgen <rhyme label="a" type="m" corresp="#s3:l1">naer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hem die ons <rhyme label="a" type="m" corresp="#s3:l1">altegaer</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Soo heeft <rhyme label="b" type="m">besint</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Dat hy die is Godts <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Komt uyt des Hemels <rhyme label="c" type="m" corresp="#s3:l5">Throon</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En neemt by ons de <rhyme label="c" type="m" corresp="#s3:l5">woon</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">In kou en <rhyme label="b" type="m" corresp="#s3:l4">wint</rhyme>.</l>
        <l id="s3:l9" met="4" type="-+">En van hem leeren lijden met <rhyme label="d" type="m">vreught</rhyme>,</l>
        <l id="s3:l10" met="2" type="-+">Met ‘t nieuwe Iaer <rhyme label="e" type="f">aen</rhyme>,</l>
        <l id="s3:l11" met="2" type="+-">Om na te <rhyme label="e" type="f" corresp="#s3:l10">ontfaen</rhyme>,</l>
        <l id="s3:l12" met="2" type="-+">‘s Hemels <rhyme label="d" type="m" corresp="#s3:l9">geneught</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
