    <melody>Het jaar is langer dan de dag</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Bruydegom vol liefde <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Seer vriendelijck van <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">2 Wt u vorst een fonteyne <rhyme label="a" type="m" corresp="#s1:l1">vloeyt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om d’armen te <rhyme label="b" type="f" corresp="#s1:l2">ghenesen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">* Die versoncken lagen in den <rhyme label="a" type="m">doot</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Na by al aen der <rhyme label="b" type="f">Hellen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">4 In eenen lyden also <rhyme label="a" type="m" corresp="#s2:l1">groot</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat niemant kan <rhyme label="b" type="f" corresp="#s2:l2">vertellen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">* Sy saghen om hulpe <rhyme label="a" type="m">ontrent</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Maer sy en vonden <rhyme label="b" type="f">gheene</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Niemant heeft hem tot haer <rhyme label="a" type="m" corresp="#s3:l1">ghewent</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Haer troost dat was <rhyme label="b" type="f" corresp="#s3:l2">gheweene</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">* Maer ghy Heer saecht haer lijden <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En oock haer niet <rhyme label="b" type="f">vermoghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">7 Haer smarten groot, haer bitter <rhyme label="a" type="m" corresp="#s4:l1">traen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En mocht ghy niet <rhyme label="b" type="f" corresp="#s4:l2">ghedoghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">* Ghy naemt op u al haren <rhyme label="a" type="m">last</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Haer jock hebt ghy <rhyme label="b" type="f">ghedraghen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ghy ontknoopte al haer banden <rhyme label="a" type="m" corresp="#s5:l1">vast</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ginckt haer vyandt <rhyme label="b" type="f" corresp="#s5:l2">verjaghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">* Doen speelden sy <rhyme label="a" type="m">victorie</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Vwen name o <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Songhen u lof en <rhyme label="a" type="m" corresp="#s6:l1">glorie</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ghy die quaemt in ‘t <rhyme label="b" type="f" corresp="#s6:l2">verneeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">* Ghy opende haer uwen <rhyme label="a" type="m">schat</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En oock uwe <rhyme label="b" type="f">secreten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">V schrapraeyen ginghen open <rhyme label="a" type="m" corresp="#s7:l1">rat</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sy moesten met u <rhyme label="b" type="f" corresp="#s7:l2">eten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">* Doen werden sy also <rhyme label="a" type="m">verheucht</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Soo rijck en <rhyme label="b" type="f">overvloedigh</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">In haer soo werdt een stille <rhyme label="a" type="m" corresp="#s8:l1">vreught</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sy rusten seer <rhyme label="b" type="f" corresp="#s8:l2">ootmoedigh</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">* Ghy leydet haer in uwen <rhyme label="a" type="m">hof</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En ginckt met haer <rhyme label="b" type="f">vermeyen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">12 Pluckten de beste vruchten <rhyme label="a" type="m" corresp="#s9:l1">of</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Van blijtschap moesten sy <rhyme label="b" type="f" corresp="#s9:l2">schreyen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">* Nu singhen sy u t’aller <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">V prijsen sy en <rhyme label="b" type="f">loven</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Segghen o Godt <rhyme label="a" type="m" corresp="#s10:l1">ghebenedijt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Ghy zijt Coninck hier <rhyme label="b" type="f" corresp="#s10:l2">boven</rhyme>.</l>
      </lg>
    </lg>
  </text>
