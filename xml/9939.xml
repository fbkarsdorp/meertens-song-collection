    <melody>Geef mij te drinken naar mijn dorst</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DAnck-offer soet, den Heere <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Gheschieden nu, end' t'allen <rhyme label="b" type="f">Jaren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van sijn wonderen, die hy <rhyme label="a" type="m" corresp="#s1:l1">doet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Onder s Menschen kinderen <rhyme label="b" type="f" corresp="#s1:l2">scharen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Die met schepen op die Zee <rhyme label="b" type="f" corresp="#s1:l2">varen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">End' haren handel drijven <rhyme label="c" type="m">daer</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Op groote wateren vol <rhyme label="b" type="f" corresp="#s1:l2">baren</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Die sien sijn wonderlijcke wercken <rhyme label="c" type="m" corresp="#s1:l6">claer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy ondersoecken s Heeren <rhyme label="a" type="m">werck</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Sijn wonderen ter Zee <rhyme label="b" type="f">beseven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Met een woordt uyt ghesproken <rhyme label="a" type="m" corresp="#s2:l1">sterck</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Can by sulcken storm-windt <rhyme label="b" type="f" corresp="#s2:l2">gheven</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dat die baren worden <rhyme label="b" type="f" corresp="#s2:l2">verheven</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">End' t'schip ghedreven// vaert <rhyme label="c" type="m">terstont</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Op nae den Hemel, boven <rhyme label="b" type="f" corresp="#s2:l2">schreven</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">End' daelt dan weder in den <rhyme label="c" type="m" corresp="#s2:l6">afgront</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Der Menschen Zielen worden <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Door s'Heeren macht met angst <rhyme label="b" type="f">beladen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Sy tuymelen als eenen <rhyme label="a" type="m" corresp="#s3:l1">Man</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Die droncke gaet onrechte <rhyme label="b" type="f" corresp="#s3:l2">paden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">End' t'eynden zijnde van alle <rhyme label="b" type="f" corresp="#s3:l2">raden</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Vol van ghenaden// den Heere <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Die haer behoeden can voor <rhyme label="b" type="f" corresp="#s3:l2">schaden</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Aenroepen sy in haren <rhyme label="c" type="m" corresp="#s3:l6">noodt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Heere die is <rhyme label="a" type="m">goedertier</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hy helpts' uyt angst en droefheyt <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hy stilt dat onweders <rhyme label="a" type="m" corresp="#s4:l1">dangier</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat die baren moeten in <rhyme label="b" type="f" corresp="#s4:l2">vrede</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Dalen in hare <rhyme label="b" type="f" corresp="#s4:l2">legher-stede</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Die stillichede// maeckt haer <rhyme label="c" type="m">verblijdt</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">End' dat sy zijn, nae wensch end' <rhyme label="b" type="f" corresp="#s4:l2">bede</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Weder te lande uyt noodt <rhyme label="c" type="m" corresp="#s4:l6">bevrijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die sullen dancken den Heere <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Van sijn goetheyt, met <rhyme label="b" type="f">verjalijsen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">End' door sijn wonderen, die <rhyme label="a" type="m" corresp="#s5:l1">hy</rhyme></l>
        <l id="s5:l4" met="4" type="-+">s'Menschen kinderen gaet <rhyme label="b" type="f" corresp="#s5:l2">bewijsen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">End' hem in der Ghemeynten <rhyme label="b" type="f" corresp="#s5:l2">prijsen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Sijne fame rijsen// end' roemen <rhyme label="c" type="m">wijdt</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">By die ouders, want hy can <rhyme label="b" type="f" corresp="#s5:l2">spijsen</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Al wat hier leeft in't aertsche <rhyme label="c" type="m" corresp="#s5:l6">krijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Met vijf brooden, end' visschen <rhyme label="a" type="m">twee</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Cond' hy soo menich Mensch <rhyme label="b" type="f">versaden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hy dreef sijn Jongheren ter <rhyme label="a" type="m" corresp="#s6:l1">Zee</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Sonder hem sy te schepe <rhyme label="b" type="f" corresp="#s6:l2">traden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Teghen den Avont, t'began te <rhyme label="b" type="f" corresp="#s6:l2">spaden</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Die vry van quaden// is sonder <rhyme label="c" type="m">erch</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Ons tot een voorbeeldt vol <rhyme label="b" type="f" corresp="#s6:l2">weldaden</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Ginck alleen bidden op eenen <rhyme label="c" type="m" corresp="#s6:l6">berch</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">T'schip was midden op der Zee <rhyme label="a" type="m">plas</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Door die baren in swaer <rhyme label="b" type="f">bestrijden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Midts dat den windt haer teghen <rhyme label="a" type="m" corresp="#s7:l1">was</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In die vierde nachtwake <rhyme label="b" type="f" corresp="#s7:l2">tijden</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Saghen sy Jesum comen <rhyme label="b" type="f" corresp="#s7:l2">schrijden</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Tot haer besijden// op't water <rhyme label="c" type="m">vocht</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Dit deed' haer herte vreese <rhyme label="b" type="f" corresp="#s7:l2">lijden</rhyme>.</l>
        <l id="s7:l8" met="4" type="-+">Sy spraken, het is een <rhyme label="c" type="m" corresp="#s7:l6">ghedrocht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sy riepen door des angsts <rhyme label="a" type="m">torment</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Jesus tot haer sprack dat ment <rhyme label="b" type="f">hoorde</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Hebt eenen goeden moet, ick <rhyme label="a" type="m" corresp="#s8:l1">bent</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En vreest u niet, Petrus <rhyme label="b" type="f" corresp="#s8:l2">antwoorde</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Heere zijt ghy't? heet met <rhyme label="b" type="f" corresp="#s8:l2">accoorde</rhyme></l>
        <l id="s8:l6" met="4" type="-+">My buyten boorde// comen <rhyme label="c" type="m">snel</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Tot u op t'water, als <rhyme label="b" type="f" corresp="#s8:l2">d'onghestoorde</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Van comen creech Petrus <rhyme label="c" type="m" corresp="#s8:l6">bevel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hy tradt uyt t'schip, seer wel <rhyme label="a" type="m">ghesint</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Op t'water, sonder <rhyme label="b" type="f">achterdincken</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Gaende, sach eenen stercken <rhyme label="a" type="m" corresp="#s9:l1">windt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Hy verschrickt' end' began te <rhyme label="b" type="f" corresp="#s9:l2">sincken</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Riep, Heer helpt, oft ick moet <rhyme label="b" type="f" corresp="#s9:l2">verdrincken</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Maer Jesus ginck, end' greep sijn <rhyme label="c" type="m">handt</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">O cleyn gheloovigh' als die <rhyme label="b" type="f" corresp="#s9:l2">hincken</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">Waerom twijfelt ghy <rhyme label="c" type="m" corresp="#s9:l6">inconstant</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dus quamen sy in't schip <rhyme label="a" type="m">ghegaen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Met dit vermaen, van goeder <rhyme label="b" type="f">famen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Doen is de windt gaen ligghen <rhyme label="a" type="m" corresp="#s10:l1">saen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En die daer in't waren, <rhyme label="b" type="f" corresp="#s10:l2">quamen</rhyme></l>
        <l id="s10:l5" met="4" type="-+">End' vielen voor hem neder <rhyme label="b" type="f" corresp="#s10:l2">t'samen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Met namen, Gods Sone <rhyme label="c" type="m">voorwaer</rhyme></l>
        <l id="s10:l7" met="4" type="-+">Beleden sy hem, nae <rhyme label="b" type="f" corresp="#s10:l2">t'betamen</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">End' ontquamen t'perijckel <rhyme label="c" type="m" corresp="#s10:l6">swaer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">In perijckel dach ende <rhyme label="a" type="m">nacht</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">In die diepte der Zee <rhyme label="b" type="f">beneden</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Heeft Paulus den tijdt <rhyme label="a" type="m" corresp="#s11:l1">toeghebracht</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">End' driemael schipbrake <rhyme label="b" type="f" corresp="#s11:l2">gheleden</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Veel perijckel heeft hem <rhyme label="b" type="f" corresp="#s11:l2">bestreden</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">In landen steden, over al, <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Maer valsche broeders, vol <rhyme label="b" type="f" corresp="#s11:l2">onvreden</rhyme>,</l>
        <l id="s11:l8" met="4" type="-+">Deden hem moeyt, end' swaer <rhyme label="c" type="m" corresp="#s11:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Veel valsche broeders men noch <rhyme label="a" type="m">vindt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Perijckuleus om te <rhyme label="b" type="f">hantieren</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Wiens woordt als den kancker <rhyme label="a" type="m" corresp="#s12:l1">verslint</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Want sy haer tonghen <rhyme label="b" type="f" corresp="#s12:l2">misregieren</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Jae spreken schier wat sy <rhyme label="b" type="f" corresp="#s12:l2">regieren</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Schrijven papieren// vol leughens <rhyme label="c" type="m">coen</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">O Broeders, merckt op haer <rhyme label="b" type="f" corresp="#s12:l2">manieren</rhyme>,</l>
        <l id="s12:l8" met="4" type="-+">Of sy ghelijck d'Apostels <rhyme label="c" type="m" corresp="#s12:l6">doen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Oorlof Broeders, wilt voor <rhyme label="a" type="m">besluyt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">T'Schip der consciency <rhyme label="b" type="f">bewaren</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Daer in t'gheloof, en seylt recht <rhyme label="a" type="m" corresp="#s13:l1">uyt</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Op t'compas van Gods woordt <rhyme label="b" type="f" corresp="#s13:l2">verclaren</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Door schalcke winden, noch wilde <rhyme label="b" type="f" corresp="#s13:l2">baren</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">En wilt niet varen, buyten <rhyme label="c" type="m">t'ghebodt</rhyme>,</l>
        <l id="s13:l7" met="4" type="-+">Maer om in s'Levens haven <rhyme label="b" type="f" corresp="#s13:l2">vergaren</rhyme>,</l>
        <l id="s13:l8" met="4" type="-+">Anckert u hope vast in <rhyme label="c" type="m" corresp="#s13:l6">Godt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
