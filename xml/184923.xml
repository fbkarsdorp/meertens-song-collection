  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">HArt sondaers <rhyme label="a" type="m">gemoedt</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Steen herte, vreedt <rhyme label="a" type="m" corresp="#s1:l1">bloedt</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">t'En sal u niet <rhyme label="b" type="f">baeten</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Het quaedt te <rhyme label="b" type="f" corresp="#s1:l3">laeten</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Als gy voelt uw' <rhyme label="c" type="m">straf'</rhyme>:</l>
        <l id="s1:l6" met="2" type="-+">Godt dreyght te <rhyme label="d" type="f">vreken</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Syn vraeck is <rhyme label="d" type="f" corresp="#s1:l6">ontsteken</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Schroomt gy daer niet <rhyme label="c" type="m" corresp="#s1:l5">af</rhyme>?</l>
        <l id="s1:l9" met="2" type="-+">Siet, met volle <rhyme label="e" type="m">kracht</rhyme></l>
        <l id="s1:l10" met="2" type="-+">Gaet vallen syn <rhyme label="f" type="f">donder</rhyme>,</l>
        <l id="s1:l11" met="2" type="+-">En slaen u ten <rhyme label="f" type="f" corresp="#s1:l10">onder</rhyme>,</l>
        <l id="s1:l12" met="2" type="-+">Vreest syn schrickig' <rhyme label="e" type="m" corresp="#s1:l9">macht</rhyme>.</l>
        <l id="s1:l13" met="2" type="-+">En streelt u <rhyme label="g" type="m">niet</rhyme>,</l>
        <l id="s1:l14" met="2" type="-+">Syn waepens gy <rhyme label="g" type="m" corresp="#s1:l13">siet</rhyme>,</l>
        <l id="s1:l15" met="2" type="-+">Syn blixems in <rhyme label="h" type="f">d'handen</rhyme>,</l>
        <l id="s1:l16" met="2" type="-+">Om u te <rhyme label="h" type="f" corresp="#s1:l15">door-branden</rhyme></l>
        <l id="s1:l17" met="2" type="-+">Soo hy die <rhyme label="g" type="m" corresp="#s1:l13">uyt-schiet</rhyme>.</l>
        <l id="s1:l18" met="2" type="-+">Geeft gy geen <rhyme label="i" type="f">sucht</rhyme>?</l>
        <l id="s1:l19" met="2" type="-+">Siet gy d'helsche <rhyme label="h" type="f" corresp="#s1:l15">banden</rhyme>,</l>
        <l id="s1:l20" met="2" type="-+">Sonder dat gy <rhyme label="i" type="f" corresp="#s1:l18">vlucht</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Hoe! vreest gy dan <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Een eeuwigh <rhyme label="a" type="m" corresp="#s2:l1">verdriet</rhyme>?</l>
        <l id="s2:l3" met="2" type="-+">Gy van d'helsche <rhyme label="b" type="f">monden</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Haest wordt <rhyme label="b" type="f" corresp="#s2:l3">verslonden</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">d'Aerde <rhyme label="c" type="m">open-gaet</rhyme>:</l>
        <l id="s2:l6" met="2" type="-+">Godt komt u <rhyme label="d" type="f">trecken</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Uw hart hert <rhyme label="d" type="f" corresp="#s2:l6">verwecken</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Maer gy <rhyme label="c" type="m" corresp="#s2:l5">tegen-staet</rhyme>.</l>
        <l id="s2:l9" met="2" type="-+">Gy wilt dan <rhyme label="e" type="m">vergaen</rhyme>?</l>
        <l id="s2:l10" met="2" type="-+">Gy gaet u <rhyme label="f" type="f">verderven</rhyme>,</l>
        <l id="s2:l11" met="2" type="+-">In wee wilt gy <rhyme label="f" type="f" corresp="#s2:l10">sterven</rhyme>;</l>
        <l id="s2:l12" met="2" type="-+">t'Is met u <rhyme label="e" type="m" corresp="#s2:l9">gedaen</rhyme>.</l>
        <l id="s2:l13" met="2" type="-+">d'Hel u <rhyme label="g" type="m">verwacht</rhyme>,</l>
        <l id="s2:l14" met="2" type="-+">Godt op een <rhyme label="g" type="m" corresp="#s2:l13">gedacht</rhyme></l>
        <l id="s2:l15" met="2" type="-+">Komt sonder <rhyme label="h" type="f">genaede</rhyme></l>
        <l id="s2:l16" met="2" type="-+">Syn gramschap <rhyme label="h" type="f" corresp="#s2:l15">versaeden</rhyme>;</l>
        <l id="s2:l17" met="2" type="-+">Syn handt u <rhyme label="g" type="m" corresp="#s2:l13">versmacht</rhyme></l>
        <l id="s2:l18" met="2" type="-+">Dees <rhyme label="i" type="f">oogenblick</rhyme>.</l>
        <l id="s2:l19" met="2" type="-+">Met boosheydt <rhyme label="h" type="f" corresp="#s2:l15">gelaeden</rhyme></l>
        <l id="s2:l20" met="2" type="-+">Blyft gy sonder <rhyme label="i" type="f" corresp="#s2:l18">schrick</rhyme>?</l>
      </lg>
    </lg>
  </text>
