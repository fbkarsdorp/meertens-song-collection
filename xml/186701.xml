    <melody>Psalm 026 Datheen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Heere, doe my <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Want ik, uw trouwe <rhyme label="a" type="m" corresp="#s1:l1">knecht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Oprecht in al myn wandel <rhyme label="b" type="m">ging</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Ook blyf ik myn <rhyme label="c" type="f">vertrouwen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Slechs op den Heere <rhyme label="c" type="f" corresp="#s1:l4">bouwen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En vrees dies voor geen <rhyme label="b" type="m" corresp="#s1:l3">struikeling</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Neem, Heer, de proef van <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Versoek wat van my <rhyme label="a" type="m" corresp="#s2:l1">zy</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Of ik niet ben, gelyk ik <rhyme label="b" type="m">seg</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ja smelt myn hart, en <rhyme label="c" type="f">nieren</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die al myn doen <rhyme label="c" type="f" corresp="#s2:l4">bestieren</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En toets hun lust, en <rhyme label="b" type="m" corresp="#s2:l3">ooverleg</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Want uw <rhyme label="a" type="m">goedgunstigheit</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Waar in myn welvaart <rhyme label="a" type="m" corresp="#s3:l1">selt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Blyft eeuwig voor myn oogen <rhyme label="b" type="m">staan</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Men sag my, in myn <rhyme label="c" type="f">wandel</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En daagelykschen <rhyme label="c" type="f" corresp="#s3:l4">handel</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Op 't spoor van uwe waarheit <rhyme label="b" type="m" corresp="#s3:l3">gaan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ik sat niet in den <rhyme label="a" type="m">raad</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Noch onder d'ydle <rhyme label="a" type="m" corresp="#s4:l1">praat</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Van menschen, licht van hart, en <rhyme label="b" type="m">sin</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Ik wist bedekte <rhyme label="c" type="f">lieden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En huichelaars te <rhyme label="c" type="f" corresp="#s4:l4">vlieden</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En ging by zulke nimmer <rhyme label="b" type="m" corresp="#s4:l3">in</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ik haate selfs het <rhyme label="a" type="m">huis</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Waar in het snood <rhyme label="a" type="m" corresp="#s5:l1">gespuis</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat gaarne quaaddoet, sich <rhyme label="b" type="m">vergaart</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Nooit sit ik by de <rhyme label="c" type="f">boosen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ik schuuw de <rhyme label="c" type="f" corresp="#s5:l4">goddeloosen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En ben voor dat gesnor <rhyme label="b" type="m" corresp="#s5:l3">vervaart</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Al feil ik dikwils <rhyme label="a" type="m">noch</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ik wasch myn handen <rhyme label="a" type="m" corresp="#s6:l1">doch</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Onschuldig aan een booswigts <rhyme label="b" type="m">feit</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En gaa gerust, met <rhyme label="c" type="f">eere</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">In uw palleis, o <rhyme label="c" type="f" corresp="#s6:l4">Heere</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Rondom 't altaar voor u <rhyme label="b" type="m" corresp="#s6:l3">bereidt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Op dat ik al uw <rhyme label="a" type="m">hof</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Doe hooren, tot uw <rhyme label="a" type="m" corresp="#s7:l1">lof</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">De stem van myn <rhyme label="b" type="m">belydenis</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En al uw <rhyme label="c" type="f">wonderdingen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Door luid, en helder <rhyme label="c" type="f" corresp="#s7:l4">singen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Zo klaar vertel, als doenlik <rhyme label="b" type="m" corresp="#s7:l3">is</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ik heb uw huis seer <rhyme label="a" type="m">lief</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En wensch dat <rhyme label="a" type="m" corresp="#s8:l1">woongerief</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Tot myn verblyf, voor eeuwig, <rhyme label="b" type="m">Heer</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Ik soeke, tot myn <rhyme label="c" type="f">vreede</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Die aller eeren <rhyme label="c" type="f" corresp="#s8:l4">steede</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Uws tabernakels eeven <rhyme label="b" type="m" corresp="#s8:l3">seer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Zo raap, als gy <rhyme label="a" type="m">ontstelt</rhyme></l>
        <l id="s9:l2" met="3" type="-+">De sondaars hebt <rhyme label="a" type="m" corresp="#s9:l1">gevelt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Myn ziel niet weg met zulken <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Noch wil my om doen <rhyme label="c" type="f">brengen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Met mans die bloed <rhyme label="c" type="f" corresp="#s9:l4">verplengen</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Myn leeven zy daar toe te <rhyme label="b" type="m" corresp="#s9:l3">goed</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ik zy geensins <rhyme label="a" type="m">verdaan</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Met volk welks hand tot <rhyme label="a" type="m" corresp="#s10:l1">slaan</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En schelms bedryf steeds vaardig <rhyme label="b" type="m">staat</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat ook het recht derft <rhyme label="c" type="f">krenken</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Als ie mand, met <rhyme label="c" type="f" corresp="#s10:l4">geschenken</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Hun re chterhand slechs vullen <rhyme label="b" type="m" corresp="#s10:l3">laat</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Maarsie myn wandel <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Gelyk ik pleeg te <rhyme label="a" type="m" corresp="#s11:l1">gaan</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Zo gaa ik noch oprecht daar <rhyme label="b" type="m">heen</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Verlosme dan van 't <rhyme label="c" type="f">quaade</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">En doe my doch <rhyme label="c" type="f" corresp="#s11:l4">genaade</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Myn ziele rust op u <rhyme label="b" type="m" corresp="#s11:l3">alleen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Sie hier, myn voeten <rhyme label="a" type="m">staan</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Reeds op een effe <rhyme label="a" type="m" corresp="#s12:l1">baan</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">De Heere heeft my wel <rhyme label="b" type="m">bewaart</rhyme>.</l>
        <l id="s12:l4" met="3" type="-+">Hy hoorde my daar <rhyme label="c" type="f">booven</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Dies zalik hem ook <rhyme label="c" type="f" corresp="#s12:l4">looven</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">In plaatsen waar syn volk <rhyme label="b" type="m" corresp="#s12:l3">vergaart</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
