  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GElijk een Hart na ’t Water <rhyme label="a" type="m">snaekt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Der zuyver klaer <rhyme label="b" type="f">Fonteyne</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Aldus mijn ziele dorst en <rhyme label="a" type="m" corresp="#s1:l1">haekt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Naer Jesus minne <rhyme label="b" type="f" corresp="#s1:l2">reyne</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het derven van u klaer <rhyme label="a" type="m">aenschijn</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">(O Jesus!) doet my <rhyme label="b" type="f">smerte</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">O wesen schoon! ô Trooster <rhyme label="a" type="m" corresp="#s2:l1">mijn</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Daelt neder in mijn <rhyme label="b" type="f" corresp="#s2:l2">herte</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In allen nood wilt my <rhyme label="a" type="m">bystaen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">In druk wilt my troost <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">In d’armen uws genade <rhyme label="a" type="m" corresp="#s3:l1">ontfaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">O Jesu! hoog <rhyme label="b" type="f" corresp="#s3:l2">gepresen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Jesu! alder-liefste <rhyme label="a" type="m">lief</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">In alles wilt my <rhyme label="b" type="f">geleyden</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Bevryd my van den helschen <rhyme label="a" type="m" corresp="#s4:l1">dief</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als ik van hier sal <rhyme label="b" type="f" corresp="#s4:l2">scheyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
