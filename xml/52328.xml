<song>
  <meta>
    <id>52328</id>
    <date>
      <year-start>1813</year-start>
      <year-end>1813</year-end>
    </date>
    <tags>
      <tag translation="lament">klaaglied</tag>
    </tags>
    <melody/>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Deeze Bloemen, deeze <rhyme label="a" type="f">perken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hooren myne <rhyme label="b" type="m">minneklagt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Vlytig, vlytig aan 't <rhyme label="a" type="f" corresp="#s1:l1">werken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Het is Louiza die ik <rhyme label="b" type="m" corresp="#s1:l2">wagt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Moet zy agter deeze <rhyme label="a" type="f">muuren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Altoos in dees Kerker <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Ach hoe menig, menig <rhyme label="a" type="f" corresp="#s2:l1">uuren</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Zugt ik hier in <rhyme label="b" type="m" corresp="#s2:l2">minnepyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Schoon dit kleed van myn <rhyme label="a" type="f">verwonnen</rhyme>;</l>
        <l id="s3:l2" met="4" type="+-">En ik eenen Tuinman <rhyme label="b" type="m">schyn</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Mogt zy tog nog eens by my <rhyme label="a" type="f" corresp="#s3:l1">komen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Albert zou gelukkig <rhyme label="b" type="m" corresp="#s3:l2">zyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maar eylaas! wat doet my <rhyme label="a" type="f">vrezen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Is het maar het geen ik <rhyme label="b" type="m">gis</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Zou het mooglyk kunnen <rhyme label="a" type="f" corresp="#s4:l1">weezen</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Dood is zy dat is <rhyme label="b" type="m" corresp="#s4:l2">gewis</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wat baat nu al myn <rhyme label="a" type="f">klagten</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Daar zy ligt in 't naare <rhyme label="b" type="m">graf</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Wreede Dood komt my <rhyme label="a" type="f" corresp="#s5:l1">verzagten</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Rukt my van de waereld <rhyme label="b" type="m" corresp="#s5:l2">af</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wreede dood komt my thans <rhyme label="a" type="f">naderen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Grieft my met u felle <rhyme label="b" type="m">Zys</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">'t Ziedent bloed kruipt uit myn <rhyme label="a" type="f" corresp="#s6:l1">aderen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Daar gy my myn grasplaats <rhyme label="b" type="m" corresp="#s6:l2">wyst</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Voor het laatst zal dees <rhyme label="a" type="f">Bloemen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Gaan besproeijen met myn <rhyme label="b" type="m">traan</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Ik pluk dat Roosje waard te <rhyme label="a" type="f" corresp="#s7:l1">roemen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Dat met my in 't graf zal <rhyme label="b" type="m" corresp="#s7:l2">gaan</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Dit geweer zal my <rhyme label="a" type="f">bevryden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Dan de droefheid die ik <rhyme label="b" type="m">ly</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Ik leg dit Roosje aan myn <rhyme label="a" type="f" corresp="#s8:l1">zyde</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Met de dood zo ben ik <rhyme label="b" type="m" corresp="#s8:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">De Avondstond die komt vast <rhyme label="a" type="f">naderen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">De Kloosterdeur ontsluit zig <rhyme label="b" type="m">daar</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Men ziet door 't diepste van de <rhyme label="a" type="f" corresp="#s9:l1">bladeren</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">'t Is Louisa al te <rhyme label="b" type="m" corresp="#s9:l2">waar</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Afgemat en moe van 't <rhyme label="a" type="f">zugten</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Vliegt zy na haar waarde <rhyme label="b" type="m">vrind</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Maar helaas! dit zyn de <rhyme label="a" type="f" corresp="#s10:l1">vrugten</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Daar zy hem doorstoken <rhyme label="b" type="m" corresp="#s10:l2">vind</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Hy ontsluit voor 't laatst zyn <rhyme label="a" type="f">ogen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Ziet haar aan vol <rhyme label="b" type="m">tederheid</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Valsche schyn heeft my <rhyme label="a" type="f" corresp="#s11:l1">bedrogen</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Ik moet na de <rhyme label="b" type="m" corresp="#s11:l2">eeuwigheid</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Ja ik heb myn hart <rhyme label="a" type="f">doorstoken</rhyme>.</l>
        <l id="s12:l2" met="4" type="+-">Vliegt terug naar uwe <rhyme label="b" type="m">Cel</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">U wreede Vader is <rhyme label="a" type="f" corresp="#s12:l1">gewroken</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Louisa, ach! vaart eeuwig <rhyme label="b" type="m" corresp="#s12:l2">wel</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Ademloos en moe van <rhyme label="a" type="f">klagten</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Valt zy op zyn boezem <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Hier zal ik myn dood <rhyme label="a" type="f" corresp="#s13:l1">verwagten</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Albert zegt: zy komt niet <rhyme label="b" type="m" corresp="#s13:l2">weer</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Lieve Minnaar, wilt tog eens <rhyme label="a" type="f">spreeken</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Zyt gy weg dan voor <rhyme label="b" type="m">altoos</rhyme>?</l>
        <l id="s14:l3" met="4" type="+-">Maar hy geeft geen taal nog <rhyme label="a" type="f" corresp="#s14:l1">teken</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Ik vind niet als een dorre <rhyme label="b" type="m" corresp="#s14:l2">Roos</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Liefste Roosje vol van <rhyme label="a" type="f">geuren</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Gy zyt nu myn eenigst <rhyme label="b" type="m">goed</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Mogt gy altoos, altoos <rhyme label="a" type="f" corresp="#s15:l1">duuren</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Gy geeft my weer goede <rhyme label="b" type="m" corresp="#s15:l2">moed</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">De dood die zal ons zaam <rhyme label="a" type="f">vereenen</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Liefste vriend dit is ons <rhyme label="b" type="m">lot</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Maar hoe waggelen myne <rhyme label="a" type="f" corresp="#s16:l1">beenen</rhyme></l>
        <l id="s16:l4" met="4" type="+-">Ach ik sterf! Ã´ groote <rhyme label="b" type="m" corresp="#s16:l2">God</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
