    <melody>Schoon lief wil mij troost geven</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">JErusalem weest <rhyme label="a" type="f">lughtigh</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Laet duysternis sijn <rhyme label="a" type="f" corresp="#s1:l1">vlughtigh</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Uw' Lichte komt tot <rhyme label="b" type="m">u</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Messias is <rhyme label="c" type="f">gekoomen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Sijn glori' is <rhyme label="c" type="f" corresp="#s1:l4">vernoomen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Daerom verheught u <rhyme label="b" type="m" corresp="#s1:l3">nu</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Heydens uyt den <rhyme label="a" type="f">duyster</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die sullen na den <rhyme label="a" type="f" corresp="#s2:l1">luyster</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Van uw' Licht komen <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van Epha sal 'er <rhyme label="c" type="f">veelen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Aenkomen met <rhyme label="c" type="f" corresp="#s2:l4">Kameelen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als ook van <rhyme label="b" type="m" corresp="#s2:l3">Madian</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Veel sal 'er nogh ten <rhyme label="a" type="f">lesten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van Oosten, en van <rhyme label="a" type="f" corresp="#s3:l1">Westen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Van Suyden, en van <rhyme label="b" type="m">Noort</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Haer onder hem <rhyme label="c" type="f">begeeven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Om na sijn Wet te <rhyme label="c" type="f" corresp="#s3:l4">leeven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Gelijk als het <rhyme label="b" type="m" corresp="#s3:l3">behoort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Alreedts uyt <rhyme label="a" type="f">Oosten-Landen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Soo komen hem te <rhyme label="a" type="f" corresp="#s4:l1">vanden</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Drie Koningen met <rhyme label="b" type="m">spoet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Sy koomen hem te <rhyme label="c" type="f">eeren</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Haer Schepters <rhyme label="c" type="f" corresp="#s4:l4">presenteeren</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En vallen hem te <rhyme label="b" type="m" corresp="#s4:l3">voet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Waer is den jongen <rhyme label="a" type="f">Koningh</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die ons door een <rhyme label="a" type="f" corresp="#s5:l1">vertoningh</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Een Starre heeft <rhyme label="b" type="m">ondekt</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Wy komen met <rhyme label="c" type="f">gebeeden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">In all' <rhyme label="c" type="f" corresp="#s5:l4">ootmoedigheeden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ons maken hem <rhyme label="b" type="m" corresp="#s5:l3">subject</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Herodes werd' <rhyme label="a" type="f">verslagen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Van sulke <rhyme label="a" type="f" corresp="#s6:l1">wonder-vragen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Gelijk als ook met <rhyme label="b" type="m">hem</rhyme></l>
        <l id="s6:l4" met="3" type="-+">d'Inwoonders al te <rhyme label="c" type="f">samen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Die dit te weeten <rhyme label="c" type="f" corresp="#s6:l4">quamen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Van heel <rhyme label="b" type="m" corresp="#s6:l3">Jerusalem</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy roept met grooter <rhyme label="a" type="f">veerden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">De Priesters, <rhyme label="a" type="f" corresp="#s7:l1">Schriftgeleerden</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Seght mijn, o Princen <rhyme label="b" type="m">trouw</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wat plaets het moste <rhyme label="c" type="f">weesen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Daer Christus, hoogh <rhyme label="c" type="f" corresp="#s7:l4">gepreesen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Gebooren worden <rhyme label="b" type="m" corresp="#s7:l3">souw</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Sy seggen met <rhyme label="a" type="f">eendraghte</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Een kleyne Stadt van <rhyme label="a" type="f" corresp="#s8:l1">maghte</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Bethlem wordt dus <rhyme label="b" type="m">vereert</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Want daer uyt sal <rhyme label="c" type="f">voortkomen</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Den Prins van alle <rhyme label="c" type="f" corresp="#s8:l4">vroomen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Die IsraÃ«l <rhyme label="b" type="m" corresp="#s8:l3">regeert</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Herodes, vol van <rhyme label="a" type="f">sorgen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Doet roepen in 't <rhyme label="a" type="f" corresp="#s9:l1">verborgen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">De Koningen tot <rhyme label="b" type="m">hem</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Begint tot haer te <rhyme label="c" type="f">spreeken</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Met valschelijke <rhyme label="c" type="f" corresp="#s9:l4">streeken</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Gaet heen na <rhyme label="b" type="m" corresp="#s9:l3">Bethlehem</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">En wilt daer naerstigh <rhyme label="a" type="f">soeken</rhyme></l>
        <l id="s10:l2" met="3" type="-+">In Huysen en in <rhyme label="a" type="f" corresp="#s10:l1">hoeken</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Waer dat togh is dit <rhyme label="b" type="m">Kindt</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">En als gy 't hebt <rhyme label="c" type="f">gevonden</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Wilt mijn dan togh <rhyme label="c" type="f" corresp="#s10:l4">orconden</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Waer dat men dat dan <rhyme label="b" type="m" corresp="#s10:l3">vindt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Op dat ik dan ook <rhyme label="a" type="f">meede</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Dit lief Kindt met <rhyme label="a" type="f" corresp="#s11:l1">gebeede</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Magh eeren na <rhyme label="b" type="m">behoor</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Dus gaen sy vlijtigh <rhyme label="c" type="f">heenen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">En straks is weer <rhyme label="c" type="f" corresp="#s11:l4">verscheenen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Die Starr' die haer gingh <rhyme label="b" type="m" corresp="#s11:l3">voor</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dus gingen sy seer <rhyme label="a" type="f">blijde</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En reysden tot 'er <rhyme label="a" type="f" corresp="#s12:l1">tijde</rhyme></l>
        <l id="s12:l3" met="3" type="-+">De Starre bleef stil <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Recht booven deese <rhyme label="c" type="f">wooningh</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Daer was den jongen <rhyme label="c" type="f" corresp="#s12:l4">Koningh</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Daer sijn sy <rhyme label="b" type="m" corresp="#s12:l3">in-gegaen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Sy vielen op der <rhyme label="a" type="f">aerden</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Aenbaden met <rhyme label="a" type="f" corresp="#s13:l1">eerwaerden</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">En offerden hem <rhyme label="b" type="m">ook</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Mensch, Koningh, Godt te <rhyme label="c" type="f">same</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Beduydselen <rhyme label="c" type="f" corresp="#s13:l4">bequame</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Gout, Mirre, en <rhyme label="b" type="m" corresp="#s13:l3">Wierook</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Gout tot sijn Koninghs <rhyme label="a" type="f">Kroone</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">De Mirre om te <rhyme label="a" type="f" corresp="#s14:l1">toone</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Sijn menscheyt <rhyme label="b" type="m">sterffelijk</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">En Wierook van reuk <rhyme label="c" type="f">kraghtigh</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Dat hy is Godt <rhyme label="c" type="f" corresp="#s14:l4">Almaghtigh</rhyme></l>
        <l id="s14:l6" met="3" type="-+">In 't eeuwigh <rhyme label="b" type="m" corresp="#s14:l3">Hemelrijk</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Siet togh <rhyme label="a" type="f">IsraÃ«lijten</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Hoe vreemden u <rhyme label="a" type="f" corresp="#s15:l1">verwijten</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Dat ghy uw' Godt niet <rhyme label="b" type="m">eert</rhyme>:</l>
        <l id="s15:l4" met="3" type="-+">Sy komen van soo <rhyme label="c" type="f">verre</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Door 't leyden van een <rhyme label="c" type="f" corresp="#s15:l4">Sterre</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Seer wonderlijk <rhyme label="b" type="m" corresp="#s15:l3">geleert</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Godt heeft door sijn <rhyme label="a" type="f">Propheten</rhyme></l>
        <l id="s16:l2" met="3" type="-+">U dit al laten <rhyme label="a" type="f" corresp="#s16:l1">weeten</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Wanneer hy tot u <rhyme label="b" type="m">seydt</rhyme>:</l>
        <l id="s16:l4" met="3" type="-+">'k Sal u tot <rhyme label="c" type="f">emulati'</rhyme></l>
        <l id="s16:l5" met="3" type="-+">Brengen door vreemde <rhyme label="c" type="f" corresp="#s16:l4">nati'</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">En tot <rhyme label="b" type="m" corresp="#s16:l3">grammoedigheydt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Siet, dit mijn niet en <rhyme label="a" type="f">konden</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Die hebben mijn <rhyme label="a" type="f" corresp="#s17:l1">gevonden</rhyme>;</l>
        <l id="s17:l3" met="3" type="-+">Maer IsraÃ«ls <rhyme label="b" type="m">geslaght</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Blijft in sijn <rhyme label="c" type="f">obstinaetheydt</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">En door sijn eygen <rhyme label="c" type="f" corresp="#s17:l4">quaetheydt</rhyme>,</l>
        <l id="s17:l6" met="3" type="-+">En heeft mijn niet <rhyme label="b" type="m" corresp="#s17:l3">geaght</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">O Heydens, komt met <rhyme label="a" type="f">haeste</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Nu sult gy sijn de <rhyme label="a" type="f" corresp="#s18:l1">naeste</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">In plaets van <rhyme label="b" type="m">IsraÃ«l</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Die was wel eerst <rhyme label="c" type="f">verkooren</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">Maer wil na mijn niet <rhyme label="c" type="f" corresp="#s18:l4">hooren</rhyme>,</l>
        <l id="s18:l6" met="3" type="-+">En blijft nogh al <rhyme label="b" type="m" corresp="#s18:l3">rebel</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Daerom komt sonder <rhyme label="a" type="f">vreesen</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Ik sal uw' Koningh <rhyme label="a" type="f" corresp="#s19:l1">weesen</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Vol van <rhyme label="b" type="m">saghtmoedigheydt</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">En die haer trouwigh <rhyme label="c" type="f">toonen</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Die heb ik tot haer <rhyme label="c" type="f" corresp="#s19:l4">loonen</rhyme></l>
        <l id="s19:l6" met="3" type="-+">Het Hemelrijk <rhyme label="b" type="m" corresp="#s19:l3">bereydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
