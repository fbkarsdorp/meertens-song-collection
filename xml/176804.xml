  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ick wil (zijnde <rhyme label="a" type="m">verblijdt</rhyme>)</l>
        <l id="s1:l2" met="4" type="-+">Godt prijsen en maken <rhyme label="b" type="m">groot</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Mijn mondt sal nu sijnen lof <rhyme label="b" type="m" corresp="#s1:l2">bloot</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Verkonden breet ende <rhyme label="a" type="m" corresp="#s1:l1">wijt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Ick heb gheen ander <rhyme label="c" type="m">vreught</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dan dat ghepresen zy de <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Op dat sy die benaut zijn <rhyme label="d" type="m" corresp="#s1:l6">seer</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Daer door werden <rhyme label="c" type="m" corresp="#s1:l5">verheught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Prijst Godt met my <rhyme label="a" type="m">ghemeen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ende maeckt seer groot sijn <rhyme label="b" type="m">Naem</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Elck van ons love hem <rhyme label="b" type="m" corresp="#s2:l2">bequaem</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wy die hier zijn by <rhyme label="a" type="m" corresp="#s2:l1">een</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Mijn Godt heeft my <rhyme label="c" type="m">verhoort</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Als ick hem van herten riep <rhyme label="d" type="m">aen</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Uyt angst, daer med’ ick was <rhyme label="d" type="m" corresp="#s2:l6">bevaen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Trock hy my nae sijn <rhyme label="c" type="m" corresp="#s2:l5">woort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die onsen Godt <rhyme label="a" type="m">aensiet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die sal verlicht wesen seer <rhyme label="b" type="m">klaer</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Hy sal oock nimmermeer <rhyme label="b" type="m" corresp="#s3:l2">voorwaer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Beschaemt zijn in ‘t <rhyme label="a" type="m" corresp="#s3:l1">verdriet</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">D’Arme heeft in den <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Geroepen, en Godt heeft seer <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Hem verlost uyt den <rhyme label="d" type="m" corresp="#s3:l6">teghenspoet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Uyt anghst end’ uyt <rhyme label="c" type="m" corresp="#s3:l5">aenstoot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">D’Enghelen hebben <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Rontsom den vromen sich <rhyme label="b" type="m">gemaekt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Haren Legher, ende <rhyme label="b" type="m" corresp="#s4:l2">gewaeckt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Op dat elck seker <rhyme label="a" type="m" corresp="#s4:l1">zy</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Proeft en smaeckt in ‘t <rhyme label="c" type="m">gemeyn</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Hoe de Heer lieflijck zy en <rhyme label="d" type="m">soet</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Wel zaligh is hy wiens <rhyme label="d" type="m" corresp="#s4:l6">ghemoet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Vast staet op Godt <rhyme label="c" type="m" corresp="#s4:l5">alleyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Vreest Godt met herten <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ghy al sijn Heylighen met <rhyme label="b" type="m">vliet</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Want die hem vresen, dien sal <rhyme label="b" type="m" corresp="#s5:l2">niet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ontbreken groot noch <rhyme label="a" type="m" corresp="#s5:l1">kleyn</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">De Leeuw verhongert <rhyme label="c" type="m">wreet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Vint didkwils geen Aes waer hy <rhyme label="d" type="m">gaet</rhyme>.</l>
        <l id="s5:l7" met="4" type="-+">Maer door Gods kragt wert die <rhyme label="d" type="m" corresp="#s5:l6">versaet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Die hem bidt met <rhyme label="c" type="m" corresp="#s5:l5">bescheet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Komt ghy Kinderen <rhyme label="a" type="m">alm</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">End’ my wel neerstelijck <rhyme label="b" type="m">toe-hoort</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">De vreese Godes uyt sijn <rhyme label="b" type="m" corresp="#s6:l2">woort</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ick u wel leeren <rhyme label="a" type="m" corresp="#s6:l1">sal</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Wie is ‘t van u al <rhyme label="c" type="m">t’saerm</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Die een goet angh leven sien <rhyme label="d" type="m">wil</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Oock in rusten te wesen <rhyme label="d" type="m" corresp="#s6:l6">stil</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">End’ in vrede <rhyme label="c" type="m" corresp="#s6:l5">bequaem</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Uwe tonghe <rhyme label="a" type="m">bewaert</rhyme>:</l>
        <l id="s7:l2" met="4" type="-+">Dat sy doch niet en spreeck’ <rhyme label="b" type="m">onrecht</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Dat ghy den mensche goet end’ <rhyme label="b" type="m" corresp="#s7:l2">slecht</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Met bedroch niet <rhyme label="a" type="m" corresp="#s7:l1">beswaert</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Vliet ‘t quade, ‘t goede <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Doeckt den vreed’, end’ dien ook nae <rhyme label="d" type="m">jaegt</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Want Godt soeckt die ende hy <rhyme label="d" type="m" corresp="#s7:l6">vraeght</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Nae hen, die steedts doen <rhyme label="c" type="m" corresp="#s7:l5">goet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Godt seer ernstlijck <rhyme label="a" type="m">aensiet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Den Schalken, ende ook haer boos <rhyme label="b" type="m">werk</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Hy sal maken door sijn kracht <rhyme label="b" type="m" corresp="#s8:l2">sterck</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Haren naem gantsch tot <rhyme label="a" type="m" corresp="#s8:l1">niet</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Den vroom in dit <rhyme label="c" type="m">ellent</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Bidden Godt, end’t werden <rhyme label="d" type="m">verhoort</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Hy behoeft’ oock altijt nu <rhyme label="d" type="m" corresp="#s8:l6">voort</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Tot haer hulp hy hem <rhyme label="c" type="m" corresp="#s8:l5">went</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">By den herten <rhyme label="a" type="m">benout</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Is Godt seer goedertier <rhyme label="b" type="m">altijt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Hy helpt uyt lijden noot end’ <rhyme label="b" type="m" corresp="#s9:l2">strijdt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Die hy daer in <rhyme label="a" type="m" corresp="#s9:l1">aenschout</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Die vroom is van <rhyme label="c" type="m">ghemoet</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Sal seer veel olijden over <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Maer Godt hem haest vry maken <rhyme label="d" type="m" corresp="#s9:l6">sal</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Van kruys end’ <rhyme label="c" type="m" corresp="#s9:l5">teghenspoet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Onse Godt wel <rhyme label="a" type="m">bewaert</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Sijn beenen, soo dat daer niet <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Van al ghebroken wert <rhyme label="b" type="m" corresp="#s10:l2">ontween</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Noch eenighsins <rhyme label="a" type="m" corresp="#s10:l1">beswaert</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Maer de boose met <rhyme label="c" type="m">kracht</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Wert verdorven door sijn <rhyme label="d" type="m">misdaet</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">End’ die den oprechten doet <rhyme label="d" type="m" corresp="#s10:l6">quaet</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Sal vergaen gantsch <rhyme label="c" type="m" corresp="#s10:l5">veracht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
