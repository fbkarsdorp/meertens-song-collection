    <tags>
      <tag>holy song</tag>
    </tags>
    <melody>Schoon lief wil mij troost geven</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIlt, Iesu, mijn hart <rhyme label="a" type="f">raken</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijn tonge bequaem <rhyme label="a" type="f" corresp="#s1:l1">maken</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat ick nu met <rhyme label="b" type="m">profijt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Sint Iacobs lof mach <rhyme label="c" type="f">treffen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Door hem, uw' Naem <rhyme label="c" type="f" corresp="#s1:l4">verheffen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Tot Satans meeste <rhyme label="b" type="m" corresp="#s1:l3">spijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soo dra Sint Iacob <rhyme label="a" type="f">hoorden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Uyt Christus mondt, de'es <rhyme label="a" type="f" corresp="#s2:l1">woorden</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">(Met Sinte Ian) volght <rhyme label="b" type="m">my</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">'t Schip, en Ouders <rhyme label="c" type="f">verlaten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En al dat sy <rhyme label="c" type="f" corresp="#s2:l4">besaten</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Sy volgen Iesum <rhyme label="b" type="m" corresp="#s2:l3">bly</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De maker van de <rhyme label="a" type="f">bloemen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hoort men Sint Iacob <rhyme label="a" type="f" corresp="#s3:l1">noemen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Een Donders Kindt, of <rhyme label="b" type="m">Zoon</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Een strael van 's Hemels <rhyme label="c" type="f">throonen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Hy ziet Iesum <rhyme label="c" type="f" corresp="#s3:l4">verthoonen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Op de Bergh Thabor <rhyme label="b" type="m" corresp="#s3:l3">schoon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sint Iacob was daer <rhyme label="a" type="f">mede</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Als Iairus <rhyme label="a" type="f" corresp="#s4:l1">over-leden</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Dochter, zijn waerdste <rhyme label="b" type="m">Kindt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van de doodt is <rhyme label="c" type="f">verresen</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Sint Pieter soo wy <rhyme label="c" type="f" corresp="#s4:l4">lesen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">By hem alleen men <rhyme label="b" type="m" corresp="#s4:l3">vindt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als Godt en Al bloedt <rhyme label="a" type="f">sweeten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">In 't Hof van <rhyme label="a" type="f" corresp="#s5:l1">Oliveeten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Sint Iacob was hier <rhyme label="b" type="m">mee</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Ghy sultd'Apostel <rhyme label="c" type="f">vinden</rhyme></l>
        <l id="s5:l5" met="3" type="-+">By Christus waerdste <rhyme label="c" type="f" corresp="#s5:l4">vrinden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Als hy wat <rhyme label="b" type="m" corresp="#s5:l3">wonders-dee</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Als Christus was <rhyme label="a" type="f">verresen</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Sint Iacob sonder <rhyme label="a" type="f" corresp="#s6:l1">vreesen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Laet in 't groot Ioodtsche <rhyme label="b" type="m">Landt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En Samarien <rhyme label="c" type="f">klincken</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Sijn stem. Vreest niet te <rhyme label="c" type="f" corresp="#s6:l4">drincken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">De Kelck vol pijn; of <rhyme label="b" type="m" corresp="#s6:l3">brant</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">By nacht en dage <rhyme label="a" type="f">leerden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Hier sommige <rhyme label="a" type="f" corresp="#s7:l1">bekeerden</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Met Hermogenes 't <rhyme label="b" type="m">hooft</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En Prins der <rhyme label="c" type="f">Toovenaren</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die Satans kunst laet <rhyme label="c" type="f" corresp="#s7:l4">varen</rhyme>;</l>
        <l id="s7:l6" met="3" type="-+">Voor yder een Godt <rhyme label="b" type="m" corresp="#s7:l3">looft</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Van dese Lande <rhyme label="a" type="f">scheyde</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">In Spaengjen 't net <rhyme label="a" type="f" corresp="#s8:l1">uyt-spreyde</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Van 't heyligh Godd'lijck <rhyme label="b" type="m">woordt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Heeft tegen sijn <rhyme label="c" type="f">verlangen</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Als doe weynigh <rhyme label="c" type="f" corresp="#s8:l4">gevangen</rhyme>;</l>
        <l id="s8:l6" met="3" type="-+">Daer na 't brocht vruchten <rhyme label="b" type="m" corresp="#s8:l3">voort</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">t' Jesusalem we'er <rhyme label="a" type="f">keerden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">In 't openbaer hier <rhyme label="a" type="f" corresp="#s9:l1">leerden</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Dat Christus, Godt en <rhyme label="b" type="m">Mensch</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Was Messias, <rhyme label="c" type="f">gesonden</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Die door sijn Kruys en <rhyme label="c" type="f" corresp="#s9:l4">wonden</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Ons heeft versoent na <rhyme label="b" type="m" corresp="#s9:l3">wensch</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Sint Iacob, die wy <rhyme label="a" type="f">heeten</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Den Meerder wordt <rhyme label="a" type="f" corresp="#s10:l1">gesmeeten</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Van Herodes in 't <rhyme label="b" type="m">kot</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Met blijdtschap heeft <rhyme label="c" type="f">gedroncken</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Den Lijdens-kelck <rhyme label="c" type="f" corresp="#s10:l4">geschoncken</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Van sijnen Heer en <rhyme label="b" type="m" corresp="#s10:l3">Godt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">d'Apostel door de <rhyme label="a" type="f">degen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Heeft d'eerste kroon <rhyme label="a" type="f" corresp="#s11:l1">gekregen</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Van d'Apost'len <rhyme label="b" type="m">vermaert</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Sijn Lijck door goe <rhyme label="c" type="f">gezellen</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Geraeckt tot <rhyme label="c" type="f" corresp="#s11:l4">Compostellen</rhyme>:</l>
        <l id="s11:l6" met="3" type="-+">Wordt hier, tot noch <rhyme label="b" type="m" corresp="#s11:l3">bewaert</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Uyt al de wereldts <rhyme label="a" type="f">hoecken</rhyme></l>
        <l id="s12:l2" met="3" type="-+">De Pelgrims noch <rhyme label="a" type="f" corresp="#s12:l1">besoecken</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Sijn lichaem met <rhyme label="b" type="m">profijt</rhyme>.</l>
        <l id="s12:l4" met="3" type="-+">Spaengje bekeert. <rhyme label="c" type="f">Verlooren</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Door Barbaren en  <rhyme label="c" type="f" corresp="#s12:l4">Mooren</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Heeft verlost en <rhyme label="b" type="m" corresp="#s12:l3">bevrijt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Soeckt ghy tot 's hemels <rhyme label="a" type="f">saken</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Te komen, en te <rhyme label="a" type="f" corresp="#s13:l1">smaken</rhyme></l>
        <l id="s13:l3" met="3" type="-+">'s Hemels honigh en <rhyme label="b" type="m">melck</rhyme>.</l>
        <l id="s13:l4" met="3" type="-+">Doet deughden 't alle <rhyme label="c" type="f">tijden</rhyme>;</l>
        <l id="s13:l5" met="3" type="-+">Voor Godes eer wilt <rhyme label="c" type="f" corresp="#s13:l4">strijden</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Met vreught drinckt Godes <rhyme label="b" type="m" corresp="#s13:l3">kelck</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Sint Iacob! Onse <rhyme label="a" type="f">Landen</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Bevrijt van de <rhyme label="a" type="f" corresp="#s14:l1">vyanden</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">En van de <rhyme label="b" type="m">Kettery</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">Dat wy de lof des <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s14:l5" met="3" type="-+">In 't openbaer we'er <rhyme label="c" type="f" corresp="#s14:l4">eeren</rhyme>.</l>
        <l id="s14:l6" met="3" type="-+">Van d'helle maeckt ons <rhyme label="b" type="m" corresp="#s14:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Geeft, Jesu! aen ons <rhyme label="a" type="f">heden</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Door Sint Iacobs <rhyme label="a" type="f" corresp="#s15:l1">ghebeden</rhyme>:</l>
        <l id="s15:l3" met="3" type="-+">Dat wy met lijf en <rhyme label="b" type="m">geest</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Uw' dienen, en <rhyme label="c" type="f">behagen</rhyme></l>
        <l id="s15:l5" met="3" type="-+">In voorspoet ende <rhyme label="c" type="f" corresp="#s15:l4">plagen</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">En gunt ons' s Hemels <rhyme label="b" type="m" corresp="#s15:l3">feest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
