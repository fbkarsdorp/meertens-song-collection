<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11854</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Waarom bedroeft gij u mijn hart</melody>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VVEl op mijn ziel en leef <rhyme label="a" type="m">gerust</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En set op God uws her-ten <rhyme label="a" type="m" corresp="#s1:l1">lust</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want by hem is de <rhyme label="b" type="m">deughd</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Dus stel u lust in Godt den <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En bid dat hy u vreughd <rhyme label="c" type="m" corresp="#s1:l4">vermeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het tijdlijck daer de Mensch om <rhyme label="a" type="m">rent</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Laes! dat wort hem soo ras <rhyme label="a" type="m" corresp="#s2:l1">ontwent</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Maer 't eeuwige <rhyme label="b" type="m">geduurt</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Dat noch de tijd noch roest <rhyme label="c" type="m">verdooft</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En dat noch dief noch roover <rhyme label="c" type="m" corresp="#s2:l4">rooft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Indien u Godt sijn zeegen <rhyme label="a" type="m">geeft</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Siet dat ghy daer oock vroom by <rhyme label="a" type="m" corresp="#s3:l1">leeft</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Of anders is 't een <rhyme label="b" type="m">vloeck</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die u gedyen sal tot <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En naemaels uwen Rechter <rhyme label="c" type="m" corresp="#s3:l4">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schouw brassen, wulpsheyt, <rhyme label="a" type="m">overdaed</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die 's Menschen ziel ellendigh <rhyme label="a" type="m" corresp="#s4:l1">schaed</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Schouw twist en <rhyme label="b" type="m">hoovaerdy</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Leeft zeedigh, met een sobre <rhyme label="c" type="m">mond</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dat maeckt u lijf en ziel <rhyme label="c" type="m" corresp="#s4:l4">gesont</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Indien u God in slechte <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Beproeven wil, soo houdt doch <rhyme label="a" type="m" corresp="#s5:l1">maet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">In 't geen u Godt <rhyme label="b" type="m">verleent</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Is 't kleyn, ghy hebt oock kleynder <rhyme label="c" type="m">kruys</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Hoe grooter ramp, hoe grooter <rhyme label="c" type="m" corresp="#s5:l4">huys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">'t Zy dat u sieckt of armoe <rhyme label="a" type="m">druckt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Of dat u handel niet <rhyme label="a" type="m" corresp="#s6:l1">geluckt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Beswijckt doch <rhyme label="b" type="m">nimmermeer</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Want als ghy dan u beste <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Soo houd een vroom en reyn <rhyme label="c" type="m" corresp="#s6:l4">gemoed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">In sijnen zeegen noyt <rhyme label="a" type="m">mistrouwt</rhyme>:</l>
        <l id="s7:l2" met="4" type="-+">Met hoop op sijn beloften <rhyme label="a" type="m" corresp="#s7:l1">bouwt</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Hy weet den tijd <rhyme label="b" type="m">wanneer</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dat hy sijn troost en hulpe <rhyme label="c" type="m">sent</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En 't lieflijck aenschijn tot u <rhyme label="c" type="m" corresp="#s7:l4">went</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wie sich verlaet op tijdlijck <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Dat doch maer is als ebb' en <rhyme label="a" type="m" corresp="#s8:l1">vloet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die leunt op 't krancke <rhyme label="b" type="m">riet</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">Wie rijckdom wint ter <rhyme label="c" type="m">saligheyt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Die heeft een goede schat <rhyme label="c" type="m" corresp="#s8:l4">bereyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Gods hand is mild en <rhyme label="a" type="m">onverkort</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En die sijn zeegen <rhyme label="a" type="m" corresp="#s9:l1">overstort</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Op die hem dient en <rhyme label="b" type="m">vreest</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Hy weet wel wat den Mensch <rhyme label="c" type="m">gebreeckt</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Al eer hy sucht, ja eer hy <rhyme label="c" type="m" corresp="#s9:l4">spreeckt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dies wantrouwt nimmer in u <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">‘'t Zy of het dus of anders <rhyme label="a" type="m" corresp="#s10:l1">viel</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">‘God weet het <rhyme label="b" type="m">alderbest</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">‘Dus leeft gerust in vreughd of <rhyme label="c" type="m">smert</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">‘Want God siet op 't inwendigh <rhyme label="c" type="m" corresp="#s10:l4">hert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
