  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Dochters van <rhyme label="a" type="m">Sion</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Is uwen <rhyme label="a" type="m" corresp="#s1:l1">Salomon</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Als eenen geck <rhyme label="b" type="m">gekroont</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Aen u <rhyme label="b" type="m" corresp="#s1:l3">vertoont</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Hoort in wat <rhyme label="c" type="f">throone</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Wort <rhyme label="d" type="m">ingeleyt</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Hier Godt den <rhyme label="c" type="f" corresp="#s1:l5">Soone</rhyme>.</l>
        <l id="s1:l8" met="2" type="-+">Siet wat een <rhyme label="c" type="f" corresp="#s1:l5">kroone</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Voor hem is <rhyme label="d" type="m" corresp="#s1:l6">bereyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Dooren is de <rhyme label="a" type="m">Kroon</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En eenen Steen den <rhyme label="a" type="m" corresp="#s2:l1">throon</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Den Scepter is een <rhyme label="b" type="m">Riet</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Men acht hem <rhyme label="b" type="m" corresp="#s2:l3">niet</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Siet hoe de <rhyme label="c" type="f">Waerheyt</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Hier wort <rhyme label="d" type="m">bespot</rhyme>.</l>
        <l id="s2:l7" met="2" type="-+">De ware <rhyme label="c" type="f" corresp="#s2:l5">wijsheyt</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Van sijne <rhyme label="c" type="f" corresp="#s2:l5">Godtheyt</rhyme></l>
        <l id="s2:l9" met="3" type="+-">Houdt men hier voor <rhyme label="d" type="m" corresp="#s2:l6">sot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het Lam niet eens en <rhyme label="a" type="m">klaeght</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die Kroon' en Scepter <rhyme label="a" type="m" corresp="#s3:l1">draeght</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ons <rhyme label="b" type="m">ongestadigheyt</rhyme></l>
        <l id="s3:l4" met="2" type="-+">In 't riet <rhyme label="b" type="m" corresp="#s3:l3">beschreyt</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Hy laet ons <rhyme label="c" type="f">vloeyen</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Sijn heyligh <rhyme label="d" type="m">Bloedt</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">En gaet <rhyme label="c" type="f" corresp="#s3:l5">besproeyen</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Soo weder <rhyme label="c" type="f" corresp="#s3:l5">groeyen</rhyme></l>
        <l id="s3:l9" met="3" type="+-">In sijn liefde <rhyme label="d" type="m" corresp="#s3:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Het werelts ydel <rhyme label="a" type="m">rijck</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Aen 't ydel riet <rhyme label="a" type="m" corresp="#s4:l1">gelijck</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Met doornen oock <rhyme label="b" type="m">beset</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Hem soo <rhyme label="b" type="m" corresp="#s4:l3">verplet</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Dat van sijn <rhyme label="c" type="f">handen</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Sijn krachten <rhyme label="d" type="m">heeft</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">En sonder <rhyme label="c" type="f" corresp="#s4:l5">standen</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Van dese <rhyme label="c" type="f" corresp="#s4:l5">banden</rhyme></l>
        <l id="s4:l9" met="3" type="+-">Met een koeltje <rhyme label="d" type="m" corresp="#s4:l6">beeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Weest oock mijn <rhyme label="a" type="m">vastigheyt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Door u <rhyme label="a" type="m" corresp="#s5:l1">barmhertigheyt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">In alle <rhyme label="b" type="m">tegenspoet</rhyme></l>
        <l id="s5:l4" met="2" type="-+">O Jesu <rhyme label="b" type="m" corresp="#s5:l3">soet</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">In u <rhyme label="c" type="f">genadigh</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Mijn riet ick <rhyme label="d" type="m">plant</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Ick blijf <rhyme label="c" type="f" corresp="#s5:l5">gestadigh</rhyme>.</l>
        <l id="s5:l8" met="2" type="-+">En niet <rhyme label="c" type="f" corresp="#s5:l5">misdadigh</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">Als my houdt u <rhyme label="d" type="m" corresp="#s5:l6">handt</rhyme>.</l>
      </lg>
    </lg>
