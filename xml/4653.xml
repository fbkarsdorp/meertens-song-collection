<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>4653</id>
    <date>
      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>leuven</orginal-name>
      <standard-name>Leuven, Belgium</standard-name>
      <coordinates>
        <lon>50.879202</lon>
        <lat>4.7011675</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Mijn liefste grein verheven</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wild my nu eens <rhyme label="a" type="f">bewoorden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En helpen op de <rhyme label="b" type="m">weg</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Waer in bestond de <rhyme label="a" type="f" corresp="#s1:l1">oorde</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Toch van <rhyme label="b" type="m" corresp="#s1:l2">Melchisedech</rhyme>?</l>
        <l id="s1:l5" met="3" type="-+">Voorwaer in brood en <rhyme label="c" type="m">wijn</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Zoo moet dan <rhyme label="d" type="f">d’offerande</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Ook van des Heren <rhyme label="d" type="f" corresp="#s1:l6">handen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Bestaen in d’eige <rhyme label="c" type="m" corresp="#s1:l5">schijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En dat zoo lang als <rhyme label="a" type="f">blijven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">De eeuwen zullen <rhyme label="b" type="m">hier</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Dat my dan zonder <rhyme label="a" type="f" corresp="#s2:l1">kijven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Vertoont werd de <rhyme label="b" type="m" corresp="#s2:l2">manier</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Van dezen offer, <rhyme label="c" type="m">by</rhyme></l>
        <l id="s2:l6" met="3" type="-+">De nieuwe <rhyme label="d" type="f">Reformering</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Of ik en hou haer <rhyme label="d" type="f" corresp="#s2:l6">Lering</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Niet dan voor <rhyme label="c" type="m" corresp="#s2:l5">Kettery</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wy moeten doen <rhyme label="a" type="f">voltrekken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Den Heer zijns Vaders <rhyme label="b" type="m">eed</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Waer is dan, harde <rhyme label="a" type="f" corresp="#s3:l1">nekken</rhyme>!</l>
        <l id="s3:l4" met="3" type="-+">Dit Goddelijk <rhyme label="b" type="m" corresp="#s3:l2">secreet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">In uw’ vervormde <rhyme label="c" type="m">Kerk</rhyme>?</l>
        <l id="s3:l6" met="3" type="-+">Wy tonen onze <rhyme label="d" type="f">Missen</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Maer aen uw’ Nachtmael <rhyme label="d" type="f" corresp="#s3:l6">Dissen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En is geen offer <rhyme label="c" type="m" corresp="#s3:l5">werk</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy zegt: den Heer <rhyme label="a" type="f">voldede</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Aen ’t kruis dees <rhyme label="b" type="m">offerand</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Maer wy en sijn te <rhyme label="a" type="f" corresp="#s4:l1">vrede</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Niet, met dit nieu <rhyme label="b" type="m" corresp="#s4:l2">verstand</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">De kruisgelede <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Maer eens geofferdt <rhyme label="d" type="f">worde</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Maer Melchisedechs <rhyme label="d" type="f" corresp="#s4:l6">orde</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Moet altijd duirig <rhyme label="c" type="m" corresp="#s4:l5">sijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy offerdt inden <rhyme label="a" type="f">Hemel</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Gestaeg zijn diere <rhyme label="b" type="m">dood</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">’t Is waer, maer zonder <rhyme label="a" type="f" corresp="#s5:l1">schemel</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Of schijn van wijn en <rhyme label="b" type="m" corresp="#s5:l2">brood</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Des Vaders <rhyme label="c" type="m">waerdigheid</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Zoo groote, zoo <rhyme label="d" type="f">uitgenomen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Vereischt dat wy <rhyme label="d" type="f" corresp="#s5:l6">naerkomen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Zijn eed, zoo alsse <rhyme label="c" type="m" corresp="#s5:l5">leit</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gh’ en zult dan lieve <rhyme label="a" type="f">vrinden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">(Ghy zoukt waer dat ghy <rhyme label="b" type="m">zoukt</rhyme>)</l>
        <l id="s6:l3" met="3" type="-+">Melchisedech niet <rhyme label="a" type="f" corresp="#s6:l1">vinden</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Ten sy ghy u <rhyme label="b" type="m" corresp="#s6:l2">verkloukt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En ’t Autaer valt te <rhyme label="c" type="m">voet</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Daer Christus door de <rhyme label="d" type="f">handen</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Zijns knechts, deez’ <rhyme label="d" type="f" corresp="#s6:l6">offeranden</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Als hoge Priester <rhyme label="c" type="m" corresp="#s6:l5">doed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus leerden de <rhyme label="a" type="f">Leeraeren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Ook van de oudsten <rhyme label="b" type="m">tijd</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">En ’t bleek aen haer <rhyme label="a" type="f" corresp="#s7:l1">Autaren</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En Priesters, die <rhyme label="b" type="m" corresp="#s7:l2">gewijd</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Daer toe, dit diere <rhyme label="c" type="m">pand</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Op-offerden aen <rhyme label="d" type="f">Gode</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Voor levend’ en voor <rhyme label="d" type="f" corresp="#s7:l6">dooden</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Als tot een <rhyme label="c" type="m" corresp="#s7:l5">offerand</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wildt ghy haer wet niet <rhyme label="a" type="f">volgen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Zoo’n werd ten minsten <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Op ’t Autaer zoo <rhyme label="a" type="f" corresp="#s8:l1">verbolgen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dat ghyt aen ons <rhyme label="b" type="m" corresp="#s8:l2">verbiedt</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Op datmen niet en <rhyme label="c" type="m">zegg</rhyme>’:</l>
        <l id="s8:l6" met="3" type="-+">Dat ghy ook voor het <rhyme label="d" type="f">lijden</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Van Antichristus <rhyme label="d" type="f" corresp="#s8:l6">tijden</rhyme></l>
        <l id="s8:l8" met="3" type="-+">’t Autaer wild nemen <rhyme label="c" type="m" corresp="#s8:l5">wegg</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
