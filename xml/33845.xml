      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GY seght tot mijn, Heer, <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Noghtans en doet gy <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Het geene ik u <rhyme label="a" type="f" corresp="#s1:l1">leere</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Of dat men u <rhyme label="b" type="m" corresp="#s1:l2">gebiet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Niet al die geen die <rhyme label="a" type="f">seggen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Tot mijn, o Heer, o <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Men Goodts Rijk sal <rhyme label="a" type="f" corresp="#s2:l1">toe-leggen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Of geeven haer <rhyme label="b" type="m" corresp="#s2:l2">begeer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer die sonder <rhyme label="a" type="f">verlengen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Doen na mijn Vaders <rhyme label="b" type="m">sin</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En sijne wil <rhyme label="a" type="f" corresp="#s3:l1">volbrengen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die sal daer koomen <rhyme label="b" type="m" corresp="#s3:l2">in</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Veel sullen in die <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dan weesen in 't <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En jammerlijke <rhyme label="a" type="f" corresp="#s4:l1">klagen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">O Heer, en weet gy <rhyme label="b" type="m" corresp="#s4:l2">niet</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hoe wy met <rhyme label="a" type="f">wonder-werke</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Uw' Naem hebben <rhyme label="b" type="m">ge-eert</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Verjaeght de Duyvels <rhyme label="a" type="f" corresp="#s5:l1">sterke</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En ook <rhyme label="b" type="m" corresp="#s5:l2">gepropheteert</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dan sal ik haer <rhyme label="a" type="f">belijden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Gy bent my niet <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Gaet wegh <rhyme label="a" type="f" corresp="#s6:l1">vermaledijden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die boosheydt sijt <rhyme label="b" type="m" corresp="#s6:l2">gewent</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Soo wie hem dan <rhyme label="a" type="f">begeeve</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Tot mijn, en vlijtigh <rhyme label="b" type="m">hoort</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En stelle sijne <rhyme label="a" type="f" corresp="#s7:l1">leeve</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Na 't seggen van mijn <rhyme label="b" type="m" corresp="#s7:l2">woort</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die is te <rhyme label="a" type="f">vergelijken</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Met alle recht by <rhyme label="b" type="m">een</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Die timmert <rhyme label="a" type="f" corresp="#s8:l1">wijsselijken</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Op eenen vasten <rhyme label="b" type="m" corresp="#s8:l2">steen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">De winden mogen <rhyme label="a" type="f">brommen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Met vreeschelijk <rhyme label="b" type="m">gedruys</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">De waters mogen <rhyme label="a" type="f" corresp="#s9:l1">kommen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En slaen al tegen 't <rhyme label="b" type="m" corresp="#s9:l2">huys</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Maer 't huys en wil niet <rhyme label="a" type="f">vallen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Om dat het door de <rhyme label="b" type="m">eerdt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Met diep gegronde <rhyme label="a" type="f" corresp="#s10:l1">wallen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Op steen is <rhyme label="b" type="m" corresp="#s10:l2">gefondeerdt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Maer die met hare <rhyme label="a" type="f">ooren</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Mijn woorden hooren <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En niet doen als sy <rhyme label="a" type="f" corresp="#s11:l1">hooren</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Sijn als een sotte <rhyme label="b" type="m" corresp="#s11:l2">man</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Die timmert in het <rhyme label="a" type="f">sande</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Al sonder <rhyme label="b" type="m">fondament</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">De wateren die <rhyme label="a" type="f" corresp="#s12:l1">strande</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">En komen daer <rhyme label="b" type="m" corresp="#s12:l2">omtrent</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">De winden komen <rhyme label="a" type="f">blasen</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">En vallen op 't huys <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">De waters komen <rhyme label="a" type="f" corresp="#s13:l1">rasen</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Het huys valt ras om <rhyme label="b" type="m" corresp="#s13:l2">veer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
