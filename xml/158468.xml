  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IN oude tijden // was eenen <rhyme label="a" type="m">Wet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van Godt gegeven Jacobs <rhyme label="b" type="m">Stam</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat elck moght snijden // sonder <rhyme label="a" type="m" corresp="#s1:l1">belet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als hy in 's naesten Wijn-bergh <rhyme label="b" type="m" corresp="#s1:l2">quam</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">En neer <rhyme label="c" type="f">gheseten</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Moght hy wel <rhyme label="c" type="f" corresp="#s1:l5">eten</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Na sijnen <rhyme label="d" type="m">sin</rhyme>:</l>
        <l id="s1:l8" met="2" type="+-">Maer sacken // en <rhyme label="e" type="f">packen</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Most gants niet <rhyme label="d" type="m" corresp="#s1:l7">in</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dit toont ons even // hoe in't <rhyme label="a" type="m">ghemeen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Elck een hem in de Wereldt <rhyme label="b" type="m">voet</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Want in dit leven // magh yder <rhyme label="a" type="m" corresp="#s2:l1">een</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Noodruft nemen van 't Wereldts <rhyme label="b" type="m" corresp="#s2:l2">goedt</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">De Aertsche <rhyme label="c" type="f">dinghen</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Die magh hy <rhyme label="c" type="f" corresp="#s2:l5">bringhen</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Op sijnen <rhyme label="d" type="m">Dis</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">En smaecken // die <rhyme label="e" type="f">saecken</rhyme></l>
        <l id="s2:l9" met="2" type="-+">'t Wijl hy hier <rhyme label="d" type="m" corresp="#s2:l7">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer oock van allen // neemt hy niet <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Maer al de rest hy blijven <rhyme label="b" type="m">laet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Als Hy komt vallen // in't doncker <rhyme label="a" type="m" corresp="#s3:l1">graf</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En 't pat van al de wereldt <rhyme label="b" type="m" corresp="#s3:l2">gaet</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Wilt dan uw' <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Daer toe <rhyme label="c" type="f" corresp="#s3:l5">begeven</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">En legghen <rhyme label="d" type="m">aen</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Te vatten // de <rhyme label="e" type="f">schatten</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Die met ons <rhyme label="d" type="m" corresp="#s3:l7">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
