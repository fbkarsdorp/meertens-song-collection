    <melody>Schoon liefje jent zeer excellent</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghij dwaese menschen wats v <rhyme label="a" type="m">opset</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">dat ghijt volck brinck in <rhyme label="b" type="f">dolen</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">ghy verleytse vander heyligher kercken <rhyme label="a" type="m" corresp="#s1:l1">wet</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">van dapostolen <rhyme label="a" type="m" corresp="#s1:l1">ombesmet</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">ghy bringse int sviants <rhyme label="a" type="m" corresp="#s1:l1">net</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">me uwen valschen <rhyme label="b" type="f" corresp="#s1:l2">scholen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wegwerckers schoenlappers en <rhyme label="a" type="m">permetiers</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">dat syn nv <rhyme label="b" type="f">predicanten</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">prelaten dy bespot ghy en <rhyme label="a" type="m" corresp="#s2:l1">officiers</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">die dij kerck regeren <rhyme label="a" type="m" corresp="#s2:l1">hiers</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">ghy mesprijset dlicht des <rhyme label="a" type="m" corresp="#s2:l1">viers</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">voer beelden ende <rhyme label="b" type="f" corresp="#s2:l2">santen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Caluinum volchdy uwen <rhyme label="a" type="m">capiteyn</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">ghy vremde nieu <rhyme label="b" type="f">studenten</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">wat luther heeft ghescreuen groot en <rhyme label="a" type="m" corresp="#s3:l1">cleyn</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">dat gheloofde ghy <rhyme label="a" type="m" corresp="#s3:l1">certeyn</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">melanton hus <rhyme label="a" type="m" corresp="#s3:l1">alleyn</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">met hunnen <rhyme label="b" type="f" corresp="#s3:l2">adherenten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy verlaet huysvrouwen en kinders <rhyme label="a" type="m">cleen</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">en loopt van lande te <rhyme label="b" type="f">lande</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">verherdt soe blyfdi als een <rhyme label="a" type="m" corresp="#s4:l1">steen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">in v dwaesheyt soe ic <rhyme label="a" type="m" corresp="#s4:l1">meen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">v naket groot <rhyme label="a" type="m" corresp="#s4:l1">gheween</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">ende groote <rhyme label="b" type="f" corresp="#s4:l2">schande</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Tes al broederlyck liefde dy ghij <rhyme label="a" type="m">begheert</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">te doen uwen naesten <rhyme label="b" type="f">eendrachtich</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">mij dunckt dat ghy daer [.] selue <rhyme label="a" type="m" corresp="#s5:l1">faelgeert</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">veel menschen ghy <rhyme label="a" type="m" corresp="#s5:l1">trompeert</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">goeds heylighen <rhyme label="a" type="m" corresp="#s5:l1">blasphemeert</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">men sieghet <rhyme label="b" type="f" corresp="#s5:l2">waerachtich</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy segt dat van menschen es <rhyme label="a" type="m">ghestelt</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">den dienst der heyligher <rhyme label="b" type="f">kercken</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">En dat dy papen comen om winnen <rhyme label="a" type="m" corresp="#s6:l1">ghelt</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">waer teghen ghy <rhyme label="a" type="m" corresp="#s6:l1">rebelt</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">en seer v sinnen <rhyme label="a" type="m" corresp="#s6:l1">quelt</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">ghy ghinget beeter <rhyme label="b" type="f" corresp="#s6:l2">wercken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als dwase menschen hout ghyse <rhyme label="a" type="m">sodt</rhyme>.</l>
        <l id="s7:l2" met="3" type="-+">die vasten en <rhyme label="b" type="f">abstineren</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">om dat wy ons biechten aen papen <rhyme label="a" type="m" corresp="#s7:l1">bodt</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">tsacramente ghy <rhyme label="a" type="m" corresp="#s7:l1">bespot</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">ghy compt ints duuels <rhyme label="a" type="m" corresp="#s7:l1">cot</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">met uwen <rhyme label="b" type="f" corresp="#s7:l2">commeren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Der maghet maria spreeckt ghy <rhyme label="a" type="m">smaet</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">en ghelyckse by ander <rhyme label="b" type="f">vrouwen</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">der kercken valdeghy seer <rhyme label="a" type="m" corresp="#s8:l1">obstinaet</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">paus bisschop en <rhyme label="a" type="m" corresp="#s8:l1">legaet</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">van beuaert oft <rhyme label="a" type="m" corresp="#s8:l1">aflaet</rhyme>.</l>
        <l id="s8:l6" met="3" type="-+">en wildy ghy niet <rhyme label="b" type="f" corresp="#s8:l2">houwen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Oeck segt ghy dat ons ouders syn <rhyme label="a" type="m">verdoempt</rhyme>.</l>
        <l id="s9:l2" met="3" type="-+">als dy syn <rhyme label="b" type="f">ouerleden</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">En dat sy haer hebben deerlyck <rhyme label="a" type="m" corresp="#s9:l1">versoempt</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">al soe ghy v <rhyme label="a" type="m" corresp="#s9:l1">beroempt</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">papisten ghy ons <rhyme label="a" type="m" corresp="#s9:l1">noempt</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">vol van <rhyme label="b" type="f" corresp="#s9:l2">boesheden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ic bid v broeders hoort myn <rhyme label="a" type="m">vermaen</rhyme>.</l>
        <l id="s10:l2" met="3" type="-+">wyckt niet van daude <rhyme label="b" type="f">paden</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">dy ons auders syn <rhyme label="a" type="m" corresp="#s10:l1">voerghegaen</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">van christus doot <rhyme label="a" type="m" corresp="#s10:l1">voertaen</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">sy hebben wel <rhyme label="a" type="m" corresp="#s10:l1">ghedaen</rhyme>.</l>
        <l id="s10:l6" met="3" type="-+">weest soe <rhyme label="b" type="f" corresp="#s10:l2">beraden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Broeders in christo hoert na myn <rhyme label="a" type="m">leer</rhyme>.</l>
        <l id="s11:l2" met="3" type="-+">wt rechter <rhyme label="b" type="f">charitaten</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">bouen al mindt christum onsen <rhyme label="a" type="m" corresp="#s11:l1">heer</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">soet synder moeder <rhyme label="a" type="m" corresp="#s11:l1">eer</rhyme>.</l>
        <l id="s11:l5" met="3" type="-+">synen heylighen suldy <rhyme label="a" type="m" corresp="#s11:l1">zeer</rhyme></l>
        <l id="s11:l6" met="3" type="-+">bidden als <rhyme label="b" type="f" corresp="#s11:l2">aduocaten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
