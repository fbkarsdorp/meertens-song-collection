<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>51767</id>
    <date>
      <year-start>1771</year-start>
      <year-end>1771</year-end>
    </date>
    <tags>
      <tag translation="murder song">moordlied</tag>
    </tags>
    <melody>Ik drink de nieuwe most</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt droevig <rhyme label="a" type="m">ongeval</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoort men op 't Aerdsche <rhyme label="a" type="m" corresp="#s1:l1">Dal</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Nooit vreeder zaek kan worden <rhyme label="b" type="m">bediet</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Als ik zal singen in dit droevig <rhyme label="b" type="m" corresp="#s1:l3">Lied</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Hoe een ryke <rhyme label="c" type="m">Madam</rhyme>,</l>
        <l id="s1:l6" met="5" type="+-">Met haren Zoon in groot lyden <rhyme label="c" type="m" corresp="#s1:l5">kwam</rhyme>,</l>
        <l id="s1:l7" met="5" type="-+">Door 't belette van een deugzaem <rhyme label="d" type="f">leve</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Gelyk gy hooren <rhyme label="e" type="m">zult</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Hebt een weinig <rhyme label="e" type="m" corresp="#s1:l8">gedult</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dees Iuffrouw had een <rhyme label="a" type="m">meid</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die haer tien Iaeren <rhyme label="a" type="m" corresp="#s2:l1">teid</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Had gedient getrouw in <rhyme label="b" type="m">Eerbaerheid</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Hoort hoe den Zoon verlieft op haer <rhyme label="b" type="m" corresp="#s2:l3">Schoonheid</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">sprak haer dikwils <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s2:l6" met="5" type="+-">Og Liefje wilt my ten antwoord <rhyme label="c" type="m" corresp="#s2:l5">staen</rhyme></l>
        <l id="s2:l7" met="5" type="-+">Zyn hart en Ziel dat word <rhyme label="d" type="f">genegen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Tot U, Edel schoone <rhyme label="e" type="m">Vrouw</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Ik verzoek uw tot myn <rhyme label="e" type="m" corresp="#s2:l8">Trouw</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Zy sprak wil van myn <rhyme label="a" type="m">vlien</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dit en zal nooit <rhyme label="a" type="m" corresp="#s3:l1">geschien</rhyme>:</l>
        <l id="s3:l3" met="5" type="-+">Ik ben een dienstmeid klein van <rhyme label="b" type="m">pragt</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Die voor hun brood werke dag en <rhyme label="b" type="m" corresp="#s3:l3">nagt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">U Moeder hoog van <rhyme label="c" type="m">staet</rhyme></l>
        <l id="s3:l6" met="5" type="+-">Dat zy 't wist zou worden <rhyme label="c" type="m" corresp="#s3:l5">disperaet</rhyme>,</l>
        <l id="s3:l7" met="5" type="-+">Daerom wil my met vreden <rhyme label="d" type="f">laten</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Gy vryd maer om myn <rhyme label="e" type="m">Eer</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Daen bleef ik 't <rhyme label="e" type="m" corresp="#s3:l8">hertzeer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wel neen myn Lief <rhyme label="a" type="m">aenziet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Het en is daerom <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Ik zal myn Moeder wel bepraete <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s4:l4" met="5" type="-+">Zoo gy my kiest voor uwe Egte <rhyme label="b" type="m" corresp="#s4:l3">Man</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Daer is tot <rhyme label="c" type="m">onderpand</rhyme>,</l>
        <l id="s4:l6" met="5" type="+-">Een Brief geschreve met myn <rhyme label="c" type="m" corresp="#s4:l5">Hand</rhyme>,</l>
        <l id="s4:l7" met="5" type="-+">Waer op dees, Maget was te <rhyme label="d" type="f">vreden</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En sprak ik verlaet uw <rhyme label="e" type="m">nooit</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Voor dat ons scheid de <rhyme label="e" type="m" corresp="#s4:l8">Dood</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O dwaeze Liefde <rhyme label="a" type="m">blind</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Zoo ik beschreven <rhyme label="a" type="m" corresp="#s5:l1">vind</rhyme></l>
        <l id="s5:l3" met="5" type="-+">Sy word bevrugt van deze jonge <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s5:l4" met="5" type="-+">'t welk baert veel droefheid en <rhyme label="b" type="m" corresp="#s5:l3">hertzeer</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Maer zoo de Moeder <rhyme label="c" type="m">klaer</rhyme></l>
        <l id="s5:l6" met="5" type="+-">Wist dat de Meid by haer Zoon ging <rhyme label="c" type="m" corresp="#s5:l5">zwaer</rhyme>,</l>
        <l id="s5:l7" met="5" type="-+">Het scheen of de Duivel haer <rhyme label="d" type="f">Regeerde</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Daer was geen rustplaets <rhyme label="e" type="m">meer</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Voor deze Maegd och <rhyme label="e" type="m" corresp="#s5:l8">Heer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sy sprak haer Dienstmeid <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Hoer wat hebt gy <rhyme label="a" type="m" corresp="#s6:l1">gedaen</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">Dat gy met kind gaet <rhyme label="b" type="m">zwaer</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">En dat myn Soon daer af is de <rhyme label="b" type="m" corresp="#s6:l3">Vaer</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Weg hoer van alle <rhyme label="c" type="m">Man</rhyme>,</l>
        <l id="s6:l6" met="5" type="+-">Dat is een leugen gelyk ik denken <rhyme label="c" type="m" corresp="#s6:l5">kan</rhyme></l>
        <l id="s6:l7" met="5" type="-+">Want ik zou hem niet laeten <rhyme label="d" type="f">paren</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Aen uw tog arm <rhyme label="e" type="m">Dier</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Neemt uw vertrek van <rhyme label="e" type="m" corresp="#s6:l8">hier</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zy gaf haer geld en <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Daer op den staende <rhyme label="a" type="m" corresp="#s7:l1">voet</rhyme></l>
        <l id="s7:l3" met="5" type="-+">Sy gaet nu weg dees Maget vol <rhyme label="b" type="m">spyt</rhyme>:</l>
        <l id="s7:l4" met="5" type="-+">En heeft Adieu tegen hare Lief <rhyme label="b" type="m" corresp="#s7:l3">gezeid</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Kwam by haer Vriende <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s7:l6" met="5" type="+-">Gaf te kenne hoe het was <rhyme label="c" type="m" corresp="#s7:l5">vergaen</rhyme>,</l>
        <l id="s7:l7" met="5" type="-+">Haer tyt was om dat zy moest <rhyme label="d" type="f">baren</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Twee Kinders van een <rhyme label="e" type="m">dragt</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Dat heer in lyden <rhyme label="e" type="m" corresp="#s7:l8">bragt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Siet nu de Moeder <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wat dat zy heeft <rhyme label="a" type="m" corresp="#s8:l1">gedaen</rhyme>,</l>
        <l id="s8:l3" met="5" type="-+">Dwingt haeren Soon door de magt van haer <rhyme label="b" type="m">geld</rhyme>,</l>
        <l id="s8:l4" met="5" type="-+">Dat hy moet trouwen met een ander <rhyme label="b" type="m" corresp="#s8:l3">Beeld</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Daer word geen tyt <rhyme label="c" type="m">verkwist</rhyme>;</l>
        <l id="s8:l6" met="5" type="+-">Maer zoo dees arme Dienstmaegt dit <rhyme label="c" type="m" corresp="#s8:l5">wist</rhyme>;</l>
        <l id="s8:l7" met="5" type="-+">Dat haer Lief met een ander ging <rhyme label="d" type="f">paren</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Dagt zy ik wil eens gaen <rhyme label="e" type="m">sien</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Om hem dat te <rhyme label="e" type="m" corresp="#s8:l8">verbien</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Toen zy haer Lief <rhyme label="a" type="m">aenzag</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Riep zy met een droef <rhyme label="a" type="m" corresp="#s9:l1">geklag</rhyme>,</l>
        <l id="s9:l3" met="5" type="-+">Kom Dood hael my van 't leven <rhyme label="b" type="m">af</rhyme>,</l>
        <l id="s9:l4" met="5" type="-+">Ik wil met u trekke in 't duyster <rhyme label="b" type="m" corresp="#s9:l3">graf</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Berooft van haer <rhyme label="c" type="m">verstand</rhyme>,</l>
        <l id="s9:l6" met="5" type="+-">Liep uit de Kerk met het mes in haer <rhyme label="c" type="m" corresp="#s9:l5">hand</rhyme>,</l>
        <l id="s9:l7" met="5" type="-+">en heeft haer zelven <rhyme label="d" type="f">doorstoken</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Dat zy viel Dood ô <rhyme label="e" type="m">Heer</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Tusschen haer Kinders <rhyme label="e" type="m" corresp="#s9:l8">neer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Men kwam toen uit de <rhyme label="a" type="m">Kerk</rhyme>:</l>
        <l id="s10:l2" met="3" type="-+">En zag dit droevig <rhyme label="a" type="m" corresp="#s10:l1">werk</rhyme>,</l>
        <l id="s10:l3" met="5" type="-+">de Bruidegom riep menigmael ô <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s10:l4" met="5" type="-+">En viel voor dood op haer Lighaem te <rhyme label="b" type="m" corresp="#s10:l3">neer</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En stort meenig <rhyme label="c" type="m">traen</rhyme>,</l>
        <l id="s10:l6" met="5" type="+-">Och zoete Iezus wat heb ik <rhyme label="c" type="m" corresp="#s10:l5">gedaen</rhyme>,</l>
        <l id="s10:l7" met="5" type="-+">dat ik mijn Lief hebt laten <rhyme label="d" type="f">varen</rhyme>:</l>
        <l id="s10:l8" met="3" type="-+">Om het vermalledyde <rhyme label="e" type="m">goed</rhyme>;</l>
        <l id="s10:l9" met="3" type="-+">dat dog hier blijven <rhyme label="e" type="m" corresp="#s10:l8">moet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Sy trokken hem <rhyme label="a" type="m">bekwaem</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Van het doode <rhyme label="a" type="m" corresp="#s11:l1">lighaem</rhyme>,</l>
        <l id="s11:l3" met="5" type="-+">Hy nam zo alle bey de Kinder <rhyme label="b" type="m">klaer</rhyme>,</l>
        <l id="s11:l4" met="5" type="-+">Vertelt zyn Moeder deze droeve <rhyme label="b" type="m" corresp="#s11:l3">maer</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Zy antwoorde hem <rhyme label="c" type="m">fel</rhyme>,</l>
        <l id="s11:l6" met="5" type="+-">Ik wou dat de Duivel kwam uit de <rhyme label="c" type="m" corresp="#s11:l5">Hel</rhyme></l>
        <l id="s11:l7" met="5" type="-+">Die u met u Kinders weg <rhyme label="d" type="f">voerden</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Uyt myn oogen heel <rhyme label="e" type="m">klaer</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">Dan heb ik geen <rhyme label="e" type="m" corresp="#s11:l8">misbaer</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Hy ley de Kinders <rhyme label="a" type="m">net</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Alle bey op zyn <rhyme label="a" type="m" corresp="#s12:l1">bed</rhyme>,</l>
        <l id="s12:l3" met="5" type="-+">En is getreden zo na zyn <rhyme label="b" type="m">warant</rhyme>,</l>
        <l id="s12:l4" met="5" type="-+">Om te stellen zyn droefheid van <rhyme label="b" type="m" corresp="#s12:l3">kant</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Ziet wat den Duivel <rhyme label="c" type="m">doet</rhyme>;</l>
        <l id="s12:l6" met="5" type="+-">De Moeder als vertorent en <rhyme label="c" type="m" corresp="#s12:l5">verwoed</rhyme>,</l>
        <l id="s12:l7" met="5" type="-+">Zy liep na 't bed myn hart zou <rhyme label="d" type="f">schrome</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Smeet het een Kind <rhyme label="e" type="m">alhier</rhyme>,</l>
        <l id="s12:l9" met="3" type="-+">Van boven in 't <rhyme label="e" type="m" corresp="#s12:l8">Vier</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Och Mensche maekt <rhyme label="a" type="m">geween</rhyme>;</l>
        <l id="s13:l2" met="3" type="-+">'t was genoeg met <rhyme label="a" type="m" corresp="#s13:l1">een</rhyme></l>
        <l id="s13:l3" met="5" type="-+">Sy nam het een als een <rhyme label="b" type="m">Barbaer</rhyme>,</l>
        <l id="s13:l4" met="5" type="-+">En scheurde het tot stukke van <rhyme label="b" type="m" corresp="#s13:l3">malkaer</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Hy keek daen door het <rhyme label="c" type="m">glas</rhyme>,</l>
        <l id="s13:l6" met="5" type="+-">Als dat zyn moeder met het Kind bezig <rhyme label="c" type="m" corresp="#s13:l5">was</rhyme>,</l>
        <l id="s13:l7" met="5" type="-+">Hy heeft die zaek doen gaen <rhyme label="d" type="f">verkonde</rhyme>;</l>
        <l id="s13:l8" met="3" type="-+">Aen de Heeren met <rhyme label="e" type="m">fatzoen</rhyme>,</l>
        <l id="s13:l9" met="3" type="-+">Van het geen hy had zien <rhyme label="e" type="m" corresp="#s13:l8">doen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Daer word niet lang <rhyme label="a" type="m">gebeid</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Men liet in korten <rhyme label="a" type="m" corresp="#s14:l1">tyd</rhyme></l>
        <l id="s14:l3" met="5" type="-+">Velen kloeken Dienaers met haeren Wapens <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s14:l4" met="5" type="-+">En name deze Moorderesse <rhyme label="b" type="m" corresp="#s14:l3">gevaen</rhyme>:</l>
        <l id="s14:l5" met="3" type="-+">Gebonde vast <rhyme label="c" type="m">gekluist</rhyme></l>
        <l id="s14:l6" met="5" type="+-">En zo gebragt na het <rhyme label="c" type="m" corresp="#s14:l5">Gevangenhuis</rhyme>,</l>
        <l id="s14:l7" met="5" type="-+">Nu is haer val op een <rhyme label="d" type="f">einde</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">Voor 't kwaed dat zy heeft <rhyme label="e" type="m">gedaen</rhyme>?</l>
        <l id="s14:l9" met="3" type="-+">Zal zy ook loon <rhyme label="e" type="m" corresp="#s14:l8">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Za Vrienden al <rhyme label="a" type="m">gelyk</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Oud Iong, Arm, of <rhyme label="a" type="m" corresp="#s15:l1">Ryk</rhyme>;</l>
        <l id="s15:l3" met="5" type="-+">Komt spiegel u aen dees boze <rhyme label="b" type="m">Vrouw</rhyme>,</l>
        <l id="s15:l4" met="5" type="-+">Zy moet sterven hier is haer Vonnes <rhyme label="b" type="m" corresp="#s15:l3">nou</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Daer helpt geen <rhyme label="c" type="m">geween</rhyme>,</l>
        <l id="s15:l6" met="5" type="+-">Voor haer spiegelt u groote en <rhyme label="c" type="m" corresp="#s15:l5">kleen</rhyme>,</l>
        <l id="s15:l7" met="5" type="-+">Vier Paerde haer aen stukken <rhyme label="d" type="f">scheure</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">En dan daer naer ô <rhyme label="e" type="m">schand</rhyme>,</l>
        <l id="s15:l9" met="3" type="-+">Wierd zy tot As <rhyme label="e" type="m" corresp="#s15:l8">Verbrand</rhyme>,</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Oorlof wie dat gy <rhyme label="a" type="m">zyt</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Gy Ouders al <rhyme label="a" type="m" corresp="#s16:l1">gelyk</rhyme>,</l>
        <l id="s16:l3" met="5" type="-+">Zyn u Kinders bequaem tot den <rhyme label="b" type="m">Egt</rhyme>,</l>
        <l id="s16:l4" met="5" type="-+">Al zyt gy ryk den armen niet af <rhyme label="b" type="m" corresp="#s16:l3">zegt</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">God heeft ons voor <rhyme label="c" type="m">gegaen</rhyme>,</l>
        <l id="s16:l6" met="5" type="+-">Denk maer eens zyn bitter lyden <rhyme label="c" type="m" corresp="#s16:l5">aen</rhyme>;</l>
        <l id="s16:l7" met="5" type="-+">En wilt na 's werelds goed niet <rhyme label="d" type="f">kyke</rhyme>,</l>
        <l id="s16:l8" met="3" type="-+">Want Zilver Goud nog <rhyme label="e" type="m">Geld</rhyme>;</l>
        <l id="s16:l9" met="3" type="-+">Word by God niet <rhyme label="e" type="m" corresp="#s16:l8">geteld</rhyme>.</l>
      </lg>
    </lg>
  </text>
