  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Welkom, schoone <rhyme label="a" type="m">morgenstond</rhyme>!</l>
        <l id="s1:l2" met="3" type="+-">o Wat zyt gy <rhyme label="b" type="f">heerlyk</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">Alles, alles, in het <rhyme label="a" type="m" corresp="#s1:l1">rond</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Toondt zig <rhyme label="b" type="f" corresp="#s1:l2">onwaardeerlyk</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Welken wellust, wat <rhyme label="c" type="m">vermaak</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Blyft voor my <rhyme label="d" type="f">verborgen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Als ik niet by tyds <rhyme label="c" type="m" corresp="#s1:l5">ontwaak</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Met den blyden <rhyme label="d" type="f" corresp="#s1:l6">morgen</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Alles wat myn oog <rhyme label="a" type="m">beschouwt</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Streelt me aan alle <rhyme label="b" type="f">kanten</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Duin en heuvel blinkt van <rhyme label="a" type="m" corresp="#s2:l1">goud</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">'t Gras van <rhyme label="b" type="f" corresp="#s2:l2">diamanten</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">'t Schel gezang in woud en <rhyme label="c" type="m">lucht</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Schynt u bly te <rhyme label="d" type="f">danken</rhyme>;</l>
        <l id="s2:l7" met="4" type="+-">Dal, en akker, en <rhyme label="c" type="m" corresp="#s2:l5">gehucht</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Vangen all' die <rhyme label="d" type="f" corresp="#s2:l6">klanken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Brasser, log door <rhyme label="a" type="m">overdaad</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Wilt vry vadzig <rhyme label="b" type="f">gaapen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En, daar gy u zelven <rhyme label="a" type="m" corresp="#s3:l1">haat</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">'t Zoetst vermaak <rhyme label="b" type="f" corresp="#s3:l2">verslaapen</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Blyf onkundig, wat al <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Welk een' pracht, wat <rhyme label="d" type="f">luister</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">De ochtendstond nu spreidt ten <rhyme label="c" type="m" corresp="#s3:l5">toon</rhyme>;</l>
        <l id="s3:l8" met="3" type="+-">Ronk in somber <rhyme label="d" type="f" corresp="#s3:l6">duister</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ik wil ondertusschen <rhyme label="a" type="m">my</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Peinzend hier <rhyme label="b" type="f">vermaaken</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En de zoete <rhyme label="a" type="m" corresp="#s4:l1">lekkerny</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Dier verrukking <rhyme label="b" type="f" corresp="#s4:l2">smaaken</rhyme>. -</l>
        <l id="s4:l5" met="4" type="+-">Is ons reeds op 't aardsche <rhyme label="c" type="m">dal</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Zoo veel vreugd <rhyme label="d" type="f">beschooren</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">O, wat heil, wat wellust <rhyme label="c" type="m" corresp="#s4:l5">zal</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Namaals ons <rhyme label="d" type="f" corresp="#s4:l6">bekooren</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
