    <melody>Gelukkig is de mens</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs van liefde <rhyme label="a" type="m">ghewont</rhyme></l>
        <l id="s1:l2" met="3" type="-+">De ziel haer gaet in <rhyme label="b" type="f">keeren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">In 't diepste vanden <rhyme label="a" type="m" corresp="#s1:l1">gront</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Daer Godt sijn Bruyt comt <rhyme label="b" type="f" corresp="#s1:l2">leeren</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van alles <rhyme label="c" type="m">onbelet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In haer selfs ooghen <rhyme label="d" type="m">cleyn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Met niet, dat is, <rhyme label="c" type="m" corresp="#s1:l5">besmet</rhyme>;</l>
        <l id="s1:l8" met="3" type="-+">Maer simpel heel, en <rhyme label="d" type="m" corresp="#s1:l6">reyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'T lichaem sy dan <rhyme label="a" type="m">vergeet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En alle werck van <rhyme label="b" type="f">buyten</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Een weet alleen sy <rhyme label="a" type="m" corresp="#s2:l1">weet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat is, geringh te <rhyme label="b" type="f" corresp="#s2:l2">sluyten</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Deuren en vensters <rhyme label="c" type="m">al</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Om soo het soet <rhyme label="d" type="m">accoort</rhyme></l>
        <l id="s2:l7" met="3" type="-+">En lieffelijck <rhyme label="c" type="m" corresp="#s2:l5">gheschal</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Te hooren van Godts <rhyme label="d" type="m" corresp="#s2:l6">woort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De krachten sy <rhyme label="a" type="m">ghebiet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van inwaerts haer te <rhyme label="b" type="f">trecken</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Om dat sy claer lijck <rhyme label="a" type="m" corresp="#s3:l1">siet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat dees haer meest <rhyme label="b" type="f" corresp="#s3:l2">ontwecken</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Wt d'over-soete <rhyme label="c" type="m">rust</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die sy daer wordt <rhyme label="d" type="m">ghewaer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Naer alder herten <rhyme label="c" type="m" corresp="#s3:l5">lust</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Haers Liefs in-lichten <rhyme label="d" type="m" corresp="#s3:l6">claer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dus d'ooghen sy <rhyme label="a" type="m">verblint</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En nauw stopt sy haer <rhyme label="b" type="f">ooren</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Om dus den gheen sy <rhyme label="a" type="m" corresp="#s4:l1">mint</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Beter, te moghen <rhyme label="b" type="f" corresp="#s4:l2">hooren</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Sy stilt oock het <rhyme label="c" type="m">ghedacht</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Sy hout haer, of-se <rhyme label="d" type="m">sliep</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">T'ont-valt in dese <rhyme label="c" type="m" corresp="#s4:l5">nacht</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Al, wat dat Godt oyt <rhyme label="d" type="m" corresp="#s4:l6">schiep</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">In dit vremt <rhyme label="a" type="m">over-landt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Is sonder werck en <rhyme label="b" type="f">weten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">'T vernuft en het <rhyme label="a" type="m" corresp="#s5:l1">verstandt</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Maer alleen is <rhyme label="b" type="f" corresp="#s5:l2">beseten</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Met liefden <rhyme label="c" type="m">over-groot</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Den Godt-formighen <rhyme label="d" type="m">wil</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Die werckt van alles <rhyme label="c" type="m" corresp="#s5:l5">bloot</rhyme></l>
        <l id="s5:l8" met="3" type="-+">In dit aenschouwen <rhyme label="d" type="m" corresp="#s5:l6">stil</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hier climt die ziele <rhyme label="a" type="m">op</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Met Moyses inde <rhyme label="b" type="f">wolcken</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Tot op het hooghste <rhyme label="a" type="m" corresp="#s6:l1">sop</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Des berghs uyt alle <rhyme label="b" type="f" corresp="#s6:l2">volcken</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Alwaer sy niet en <rhyme label="c" type="m">siet</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Want duyster ist <rhyme label="d" type="m">al-om</rhyme>;</l>
        <l id="s6:l7" met="3" type="-+">Nochtans rust s'in <rhyme label="c" type="m" corresp="#s6:l5">gheniet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Van haeren <rhyme label="d" type="m" corresp="#s6:l6">Bruydegom</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Godt neemt in haer <rhyme label="a" type="m">vermaeck</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En sy aen d'ander <rhyme label="b" type="f">sijde</rhyme></l>
        <l id="s7:l3" met="3" type="-+">(O wonderbaere <rhyme label="a" type="m" corresp="#s7:l1">saeck</rhyme>)</l>
        <l id="s7:l4" met="3" type="-+">Wordt soo ter die'er <rhyme label="b" type="f" corresp="#s7:l2">tijde</rhyme></l>
        <l id="s7:l5" met="3" type="-+">In hem <rhyme label="c" type="m">over-ghevoert</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Vry van voorleden <rhyme label="d" type="m">druck</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Daer sy stil, <rhyme label="c" type="m" corresp="#s7:l5">onberoert</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Ghevoelt haer Minnaers <rhyme label="d" type="m" corresp="#s7:l6">tuck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">In dees <rhyme label="a" type="m">ontfanckbaerheyt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Met d'eenich Een <rhyme label="b" type="f">becommert</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Den gheest hem wijt <rhyme label="a" type="m" corresp="#s8:l1">uyt-spreyn</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die daer wordt <rhyme label="b" type="f" corresp="#s8:l2">overlommert</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">'T is dach, en het is <rhyme label="c" type="m">nacht</rhyme>:</l>
        <l id="s8:l6" met="3" type="-+">'Tis duyster, en 't is <rhyme label="d" type="m">claer</rhyme></l>
        <l id="s8:l7" met="3" type="-+">'T gaet boven 's mensch <rhyme label="c" type="m" corresp="#s8:l5">ghedacht</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">'T gheen sy hier wordt <rhyme label="d" type="m" corresp="#s8:l6">ghewaer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Sy staet in 't <rhyme label="a" type="m">minne-rijck</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Vry, van haers selfs <rhyme label="b" type="f">ontslaeghen</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Met Godts wil gansch <rhyme label="a" type="m" corresp="#s9:l1">ghelijck</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Van niet weet sy te <rhyme label="b" type="f" corresp="#s9:l2">claeghen</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">In als behoudt sy't <rhyme label="c" type="m">velt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En cloeck de <rhyme label="d" type="m">over-handt</rhyme>.</l>
        <l id="s9:l7" met="3" type="-+">Natuer is met <rhyme label="c" type="m" corresp="#s9:l5">ghewelt</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Verdreven uyt haer <rhyme label="d" type="m" corresp="#s9:l6">landt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
