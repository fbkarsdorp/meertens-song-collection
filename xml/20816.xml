  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk groet U, Borgia! Goods <rhyme label="a" type="m">vrind</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die God van uwe jonge <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Nae sijn <rhyme label="b" type="f" corresp="#s1:l2">welbehagen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Yv'righ hebt <rhyme label="a" type="m" corresp="#s1:l1">bemindt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Ghy hebt van uwe Kindsheyd <rhyme label="c" type="m">af</rhyme></l>
        <l id="s1:l6" met="5" type="-+">Getoont, wat graty God den Heer U <rhyme label="c" type="m" corresp="#s1:l5">gaf</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ghy naemt die waer <rhyme label="d" type="m">altijd</rhyme></l>
        <l id="s1:l8" met="3" type="-+">In weelden, en in <rhyme label="d" type="m" corresp="#s1:l7">strijd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Borgia! het eerste <rhyme label="a" type="m">woord</rhyme></l>
        <l id="s2:l2" met="4" type="-+">'t Welck Ghy met smaeck begondt te <rhyme label="b" type="f">spreken</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">En daer na te <rhyme label="b" type="f" corresp="#s2:l2">preken</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Wierd, Mari', <rhyme label="a" type="m" corresp="#s2:l1">gehoort</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">De soete naem van haren <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Was 't tweede woord, geheel uw' mond <rhyme label="c" type="m" corresp="#s2:l5">gewoon</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Dit gaf te kennen <rhyme label="d" type="m">dat</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Ghy waert een Heyligh <rhyme label="d" type="m" corresp="#s2:l7">Vat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O Borgia! Ghy had <rhyme label="a" type="m">vermaeck</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Noch zijnde kleyn, in Priesters <rhyme label="b" type="f">kleedingh</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">En in Outaers <rhyme label="b" type="f" corresp="#s3:l2">reedingh</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">O gewenste <rhyme label="a" type="m" corresp="#s3:l1">saeck</rhyme>!</l>
        <l id="s3:l5" met="4" type="-+">Ghy preeckten voor de jonge <rhyme label="c" type="m">jeughd</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Een Kind noch zijnde, met vermaeck en <rhyme label="c" type="m" corresp="#s3:l5">vreughd</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ghy hebt de jeughd <rhyme label="d" type="m">gesticht</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Ghy waert des jonckheyds <rhyme label="d" type="m" corresp="#s3:l7">licht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Suyverheyd Ghy noyt <rhyme label="a" type="m">vergeet</rhyme>;</l>
        <l id="s4:l2" met="4" type="-+">Voorwaer Ghy nimmermeer <rhyme label="b" type="f">betrouden</rhyme></l>
        <l id="s4:l3" met="3" type="+-">U by <rhyme label="b" type="f" corresp="#s4:l2">ongehouden</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Sonder <rhyme label="a" type="m" corresp="#s4:l1">hayre-kleed</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Ghy naemt op yder Maent een <rhyme label="c" type="m">Sant</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Die U sou brengen in des Hemels <rhyme label="c" type="m" corresp="#s4:l5">Land</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Ghy spijsden t' sijnder <rhyme label="d" type="m">eer</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Goods armen meer en <rhyme label="d" type="m" corresp="#s4:l7">meer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En siet! als doodt was <rhyme label="a" type="m">Isabel</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">De alderwaerdste <rhyme label="b" type="f">Keyserinne</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Soo hebt Ghy uw' <rhyme label="b" type="f" corresp="#s5:l2">sinnen</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Snel gekeert, en <rhyme label="a" type="m" corresp="#s5:l1">wel</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Ghy ginght na de <rhyme label="c" type="m">Sociëteyt</rhyme>,</l>
        <l id="s5:l6" met="5" type="-+">Die nu de werelt door is gantsch <rhyme label="c" type="m" corresp="#s5:l5">verbreydt</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">Die haer in uwe <rhyme label="d" type="m">deughd</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Tot desen dach <rhyme label="d" type="m" corresp="#s5:l7">verheught</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy 't lichaem soo gemorselt <rhyme label="a" type="m">hebt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat Ghy u vel kond dubbel <rhyme label="b" type="f">leggen</rhyme>;</l>
        <l id="s6:l3" met="3" type="+-">Wat is dit te <rhyme label="b" type="f" corresp="#s6:l2">seggen</rhyme>?</l>
        <l id="s6:l4" met="3" type="+-">Ghy daer vreughd in <rhyme label="a" type="m" corresp="#s6:l1">schept</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">O Borgia! met sulck <rhyme label="c" type="m">geweld</rhyme></l>
        <l id="s6:l6" met="5" type="-+">Hebt Ghy verkregen 't schoone Hemels <rhyme label="c" type="m" corresp="#s6:l5">veld</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Als een starre <rhyme label="d" type="m">klaer</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Blinckt, Borgia! Ghy <rhyme label="d" type="m" corresp="#s6:l7">daer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Borgia! slaet van <rhyme label="a" type="m">om-hoogh</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Op my, ellendich mensch, uw' <rhyme label="b" type="f">oogen</rhyme>;</l>
        <l id="s7:l3" met="3" type="+-">Hebt met my <rhyme label="b" type="f" corresp="#s7:l2">meedoogen</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Die soo weynigh <rhyme label="a" type="m" corresp="#s7:l1">doogh</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Bidt dat my op mijns levens <rhyme label="c" type="m">end</rhyme>,</l>
        <l id="s7:l6" met="5" type="-+">Den alderboosten Vyand niet en <rhyme label="c" type="m" corresp="#s7:l5">schendt</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Staet, Borgia! my <rhyme label="d" type="m">by</rhyme>:</l>
        <l id="s7:l8" met="3" type="-+">Maeckt dat ick vroomich <rhyme label="d" type="m" corresp="#s7:l7">stry</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
