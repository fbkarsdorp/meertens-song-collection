  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">LIcht van mijn soete jonghe <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En school vol alle <rhyme label="b" type="f">lieflijckheden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Altaer der vreughden <rhyme label="a" type="m" corresp="#s1:l1">toegewijt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daer niemandt roockt, als door <rhyme label="b" type="f" corresp="#s1:l2">gebeden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Eerbare glans, ziel-treckend’ <rhyme label="a" type="m">vyer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Standtvaste baeck in duyst’re <rhyme label="b" type="f">wegen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Bequame plaetse van <rhyme label="a" type="m" corresp="#s2:l1">plaeysier</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">O! maeckt u hart tot my <rhyme label="b" type="f" corresp="#s2:l2">genegen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vertroost dees dienaer, die u <rhyme label="a" type="m">mint</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Vlecht handt in handt, door vaste <rhyme label="b" type="f">knoopen</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Ey, so mach ‘t gauwe <rhyme label="a" type="m" corresp="#s3:l1">Venus-kindt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Ras om wat kruydt en bloempjes <rhyme label="b" type="f" corresp="#s3:l2">loopen</rhyme>.</l>
      </lg>
    </lg>
  </text>
