  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Schoen Jonckheertje hues en <rhyme label="a" type="f">trouwe</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Deesen beeker komt tot <rhyme label="b" type="m">din</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Ick danck u seer wel schoen <rhyme label="a" type="f" corresp="#s1:l1">Jonckvrouwe</rhyme></l>
        <l id="s1:l4" met="4" type="+-">waer daer maer u vrienschap <rhyme label="b" type="m" corresp="#s1:l2">bij</rhyme></l>
        <l id="s1:l5" met="4" type="+-">schoen Jocnk heer hoe meent gij <rhyme label="c" type="m">Dat</rhyme></l>
        <l id="s1:l6" met="4" type="+-">maer dat Ick die liever <rhyme label="c" type="m" corresp="#s1:l5">hadt</rhyme></l>
        <l id="s1:l7" met="4" type="+-">dan de wijn, mocht het <rhyme label="d" type="m">sijn</rhyme></l>
        <l id="s1:l8" met="2" type="+-">het sou u rouwen, <rhyme label="a" type="f" corresp="#s1:l1">nimmermeer</rhyme></l>
        <l id="s1:l9" met="4" type="+-">Alderliefste <rhyme label="d" type="m" corresp="#s1:l7">mijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Knaepie gij sit soet ter <rhyme label="a" type="f">tale</rhyme></l>
        <l id="s2:l2" met="4" type="+-">maer u hert Is veel te <rhyme label="b" type="m">loes</rhyme></l>
        <l id="s2:l3" met="4" type="+-">schoen Jonckfrou ten kan niet <rhyme label="a" type="f" corresp="#s2:l1">faelen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">thart leit op de tonck <rhyme label="b" type="m" corresp="#s2:l2">altoes</rhyme></l>
        <l id="s2:l5" met="4" type="+-">gij vrijt wel en meent het <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s2:l6" met="4" type="+-">schoen jonckirou dat waer mijn <rhyme label="c" type="m" corresp="#s2:l5">leet</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Wie ist grein, gij <rhyme label="d" type="m">allein</rhyme></l>
        <l id="s2:l8" met="2" type="+-">tsal u <rhyme label="a" type="f" corresp="#s2:l1">faelen</rhyme></l>
        <l id="s2:l9" met="4" type="+-">Dat en hoep Ick niet <rhyme label="d" type="m" corresp="#s2:l7">sertein</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">En of men u In <rhyme label="a" type="f">eerbaerheeden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">eenige kortoeye <rhyme label="b" type="m">deed</rhyme></l>
        <l id="s3:l3" met="4" type="+-">alle mijn tijt wout Ick <rhyme label="a" type="f" corresp="#s3:l1">besteeden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">of daer Iet mocht volgen <rhyme label="b" type="m" corresp="#s3:l2">mee</rhyme></l>
        <l id="s3:l5" met="4" type="+-">maer gij sout u rommen <rhyme label="c" type="m">seer</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Dat en doe Ick nimmer <rhyme label="c" type="m" corresp="#s3:l5">meer</rhyme></l>
        <l id="s3:l7" met="4" type="+-">tWert gedaen / vanden <rhyme label="d" type="m">quaen</rhyme></l>
        <l id="s3:l8" met="2" type="+-">sonder <rhyme label="a" type="f" corresp="#s3:l1">reeden</rhyme></l>
        <l id="s3:l9" met="4" type="+-">siet mijn lief daer niet voer <rhyme label="d" type="m" corresp="#s3:l7">aen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Prinse wilt de kroes <rhyme label="a" type="f">aenvaten</rhyme></l>
        <l id="s4:l2" met="4" type="+-">en de vroutges geven <rhyme label="b" type="m">prijs</rhyme></l>
        <l id="s4:l3" met="4" type="+-">lief Ick danck u uit der <rhyme label="a" type="f" corresp="#s4:l1">maeten</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Ick sal volgen mijn <rhyme label="b" type="m" corresp="#s4:l2">aevis</rhyme></l>
        <l id="s4:l5" met="4" type="+-">neemt het aen en blift <rhyme label="c" type="m">gesont</rhyme></l>
        <l id="s4:l6" met="4" type="+-">troest mijn lief en blift <rhyme label="c" type="m" corresp="#s4:l5">gesont</rhyme></l>
        <l id="s4:l7" met="4" type="+-">tis geen noet, och tis <rhyme label="d" type="m">groet</rhyme></l>
        <l id="s4:l8" met="2" type="+-">Wat kant <rhyme label="a" type="f" corresp="#s4:l1">schade</rhyme></l>
        <l id="s4:l9" met="4" type="+-">een Kusie voer u mondelinck <rhyme label="d" type="m" corresp="#s4:l7">roet</rhyme></l>
      </lg>
    </lg>
  </text>
