  <author>Joanna Crajenschot</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Juich! juich nu, ô <rhyme label="a" type="m">Maagdenschaar</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">'t Eeuwig Licht komt u <rhyme label="b" type="f">bestraalen</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">Help my nu een Bruid <rhyme label="b" type="f" corresp="#s1:l2">inhaalen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die gy vrolyk werd <rhyme label="a" type="m" corresp="#s1:l1">gewaar</rhyme>!</l>
        <l id="s1:l5" met="4" type="+-">Een Maria, waard' <rhyme label="c" type="f">gepreezen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Zal in Begga's <rhyme label="d" type="m">Vrede-Hof</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Eene Harts-vrindin u <rhyme label="c" type="f" corresp="#s1:l5">weezen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Tot des Allerhoogstens <rhyme label="d" type="m" corresp="#s1:l6">lof</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">God der Goden! <rhyme label="a" type="m">Hemelheer</rhyme>!</l>
        <l id="s2:l2" met="4" type="+-">U zy altoos lof <rhyme label="b" type="f">gezongen</rhyme>!</l>
        <l id="s2:l3" met="4" type="+-">Hoor der Urzulynen <rhyme label="b" type="f" corresp="#s2:l2">tongen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Want zy juichen tot uwe <rhyme label="a" type="m" corresp="#s2:l1">Eer'</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Help haar door uw Englen <rhyme label="c" type="f">Chooren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Op deez' heuchelyken <rhyme label="d" type="m">stond</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Dan zult gy onz' wensch <rhyme label="c" type="f" corresp="#s2:l5">verhooren</rhyme></l>
        <l id="s2:l8" met="4" type="+-">En versterken hart en <rhyme label="d" type="m" corresp="#s2:l6">mond</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Laat Maria's <rhyme label="a" type="m">Naamvrindin</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Als een Bruid u lieflyk <rhyme label="b" type="f">weezen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Want gy hebt haar <rhyme label="b" type="f" corresp="#s3:l2">uitgelezen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Door uw teedre <rhyme label="a" type="m" corresp="#s3:l1">Vadermin</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Amsteldam moet lang <rhyme label="c" type="f">getuigen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Van haar deugd en Godsvrugt <rhyme label="d" type="m">zyn</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">En zy haare kniën <rhyme label="c" type="f" corresp="#s3:l5">buigen</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Voor uw <rhyme label="d" type="m" corresp="#s3:l6">liefde-zonneschyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Jesus, blyf haar <rhyme label="a" type="m">liefdebron</rhyme>!</l>
        <l id="s4:l2" met="4" type="+-">Koester haar door uwe <rhyme label="b" type="f">lonken</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Wil haar geest altoos <rhyme label="b" type="f" corresp="#s4:l2">ontvonken</rhyme>!</l>
        <l id="s4:l4" met="4" type="+-">Want gy zyt de <rhyme label="a" type="m" corresp="#s4:l1">Levenszon</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Die de Herdren kwam <rhyme label="c" type="f">verligten</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En verheugen in den <rhyme label="d" type="m">Nagt</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Toen, door Hemelsche <rhyme label="c" type="f" corresp="#s4:l5">Gezigten</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">'t Eeuwig Woord eens was <rhyme label="d" type="m" corresp="#s4:l6">volbragt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
