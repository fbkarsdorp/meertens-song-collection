  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Komt hier, Ã´ Ionge <rhyme label="a" type="m">Ieught</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Wilt na mijn stemme <rhyme label="b" type="f">hooren</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Vought u van jonghs tot <rhyme label="a" type="m" corresp="#s1:l1">deught</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Soo gaet ghy niet <rhyme label="b" type="f" corresp="#s1:l2">verlooren</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Want in uw' <rhyme label="c" type="f">on-behagen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Sal u dat lu-sten <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dan sult ghy 't u <rhyme label="c" type="f" corresp="#s1:l5">beklagen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Daeromme nu toe <rhyme label="d" type="m" corresp="#s1:l6">siet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Satan u staeghs <rhyme label="a" type="m">bekoort</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Op veelderley <rhyme label="b" type="f">practijcken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">'k Bidd' u na hem niet <rhyme label="a" type="m" corresp="#s2:l1">hoort</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wilt sijne strick <rhyme label="b" type="f" corresp="#s2:l2">ontwijcken</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Hy heeft sijn loose <rhyme label="c" type="f">netten</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Voor u gespannen <rhyme label="d" type="m">uyt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Daerom wilt op hem <rhyme label="c" type="f" corresp="#s2:l5">letten</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Wilt schuwen desen <rhyme label="d" type="m" corresp="#s2:l6">Guyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy omgaet als een <rhyme label="a" type="m">Leeuw</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hy soeckt niet als uw' <rhyme label="b" type="f">zielen</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Wacht u van desen <rhyme label="a" type="m" corresp="#s3:l1">Spreeuw</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Laet hem u niet <rhyme label="b" type="f" corresp="#s3:l2">vernielen</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Hy soeckt u te <rhyme label="c" type="f">bedrijgen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">By daegh en nacht met <rhyme label="d" type="m">strijdt</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">Ick mach dit niet <rhyme label="c" type="f" corresp="#s3:l5">verswijgen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Siet toe ten allen <rhyme label="d" type="m" corresp="#s3:l6">tijdt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Cupido, 't blinde <rhyme label="a" type="m">kindt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Schiet oock met sijne <rhyme label="b" type="f">pijlen</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Maeckt dattet u niet <rhyme label="a" type="m" corresp="#s4:l1">wint</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Vliedt van hem duysent <rhyme label="b" type="f" corresp="#s4:l2">mijlen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Met meenich <rhyme label="c" type="f">soetigheden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Komt Cupid' u aen <rhyme label="d" type="m">boort</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Waer mede, tegen <rhyme label="c" type="f" corresp="#s4:l5">reden</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Hy uwe sin <rhyme label="d" type="m" corresp="#s4:l6">doorboort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer 't sal u breecken <rhyme label="a" type="m">op</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Als ghy van hier sult <rhyme label="b" type="f">scheyen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wilt geven hem de <rhyme label="a" type="m" corresp="#s5:l1">schop</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Soo sult ghy 't niet <rhyme label="b" type="f" corresp="#s5:l2">beschreyen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Ghy moet de vuyle <rhyme label="c" type="f">lusten</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Bedwingen van u <rhyme label="d" type="m">vleysch</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Och of ghy die <rhyme label="c" type="f" corresp="#s5:l5">uytblusten</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Na 's redens rechten <rhyme label="d" type="m" corresp="#s5:l6">eysch</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wat is de <rhyme label="a" type="m">soetigheyt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die ghy in u voelt <rhyme label="b" type="f">komen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Al 's lichaems <rhyme label="a" type="m" corresp="#s6:l1">dartelheyt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Een luttel wort <rhyme label="b" type="f" corresp="#s6:l2">vernomen</rhyme>?</l>
        <l id="s6:l5" met="3" type="-+">Dit soet sult ghy <rhyme label="c" type="f">besuyren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">In uwe laetste <rhyme label="d" type="m">noodt</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">U sullen 's Hemels <rhyme label="c" type="f" corresp="#s6:l5">muyren</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Uyt sluyten na uw' <rhyme label="d" type="m" corresp="#s6:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wat is des werelts <rhyme label="a" type="m">pracht</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Wat zijn de fraye <rhyme label="b" type="f">klee'ren</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Waer na ghy yv'rich <rhyme label="a" type="m" corresp="#s7:l1">tracht</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Om 't lichaem te <rhyme label="b" type="f" corresp="#s7:l2">vereeren</rhyme>?</l>
        <l id="s7:l5" met="3" type="-+">Gelooft my, 't zijn maer <rhyme label="c" type="f">decksels</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Van uwe <rhyme label="d" type="m">schamelheyt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Ten zijn niet als <rhyme label="c" type="f" corresp="#s7:l5">verwecksels</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Van meerder <rhyme label="d" type="m" corresp="#s7:l6">vuyligheyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hebt eerelijck <rhyme label="a" type="m">cierach</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zijn stichtich in uw' <rhyme label="b" type="f">kleedingh</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Maeckt datmen niet en <rhyme label="a" type="m" corresp="#s8:l1">praet</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Van uwe weytsche <rhyme label="b" type="f" corresp="#s8:l2">reedingh</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Maeckt dat ghy na <rhyme label="c" type="f">gewesen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Met ving'ren niet en <rhyme label="d" type="m">wordt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Maeckt dat ghy zijt <rhyme label="c" type="f" corresp="#s8:l5">genesen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Van 't geen de jonckheyt <rhyme label="d" type="m" corresp="#s8:l6">schort</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dit is tot u <rhyme label="a" type="m">geseyt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">O jongh en dom van <rhyme label="b" type="f">sinnen</rhyme>!</l>
        <l id="s9:l3" met="3" type="-+">'k Hoop dat ghy dit <rhyme label="a" type="m" corresp="#s9:l1">bescheydt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Aennemen sult met <rhyme label="b" type="f" corresp="#s9:l2">minne</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Adieu; en zijt <rhyme label="c" type="f">gedachtich</rhyme></l>
        <l id="s9:l6" met="3" type="-+">De <rhyme label="d" type="m">Middelmatigheyt</rhyme>:</l>
        <l id="s9:l7" met="3" type="-+">Wilt nergens in zijn <rhyme label="c" type="f" corresp="#s9:l5">prachtich</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Hier toe uw' ziel <rhyme label="d" type="m" corresp="#s9:l6">bereydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
