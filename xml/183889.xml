  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">De waereld ligt in slaap <rhyme label="a" type="m">gesust</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Zij rust van haaren <rhyme label="b" type="m">taak</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wij Metslaars kiezen ook de <rhyme label="a" type="m" corresp="#s1:l1">rust</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Na deugdzaam <rhyme label="b" type="m" corresp="#s1:l2">zielvermaak</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'t Nieuwsgierig oog beloert ons <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">'t Is stilte van <rhyme label="b" type="m">rondöm</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Geen sterfling, die 't geheim <rhyme label="a" type="m" corresp="#s2:l1">bespied'</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van dit ons <rhyme label="b" type="m" corresp="#s2:l2">heiligdom</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hier kennen wij noch dwang noch <rhyme label="a" type="m">stand</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Hier stroomt ons, met den <rhyme label="b" type="m">wijn</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">De zaligheid in hart en <rhyme label="a" type="m" corresp="#s3:l1">hand</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daar we allen Broeders <rhyme label="b" type="m" corresp="#s3:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Bloei lang, gewijde <rhyme label="a" type="m">Broederschap</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Der eedle <rhyme label="b" type="m">Metslaarij</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Verëer, met vrolijk <rhyme label="a" type="m" corresp="#s4:l1">handgeklap</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">De aelöude <rhyme label="b" type="m" corresp="#s4:l2">maatschappij</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Leef lang gij, die u 't wéldoen <rhyme label="a" type="m">wijd</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En de armoê niet <rhyme label="b" type="m">verstoot</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Maar, wijl ge een echt Vrij - Metslaar <rhyme label="a" type="m" corresp="#s5:l1">zijt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Haar bijstaat in den <rhyme label="b" type="m" corresp="#s5:l2">nood</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Leev' lange elk edel <rhyme label="a" type="m">menschenvriend</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die niet tot ons <rhyme label="b" type="m">behoort</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Maar dubbel deezen rang <rhyme label="a" type="m" corresp="#s6:l1">verdient</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Daar hem de deugd <rhyme label="b" type="m" corresp="#s6:l2">bekoort</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En gij ook die onze Orde <rhyme label="a" type="m">smaad</rhyme>;</l>
        <l id="s7:l2" met="3" type="-+">Bedroogen door den <rhyme label="b" type="m">schijn</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Vooröordeel wekt nooit onzen <rhyme label="a" type="m" corresp="#s7:l1">haat</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Leef, - om verlicht te <rhyme label="b" type="m" corresp="#s7:l2">zijn</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Koomt, Broeders! reikt elkaêr de <rhyme label="a" type="m">hand</rhyme>;</l>
        <l id="s8:l2" met="3" type="-+">Duldt dat ik mijne u <rhyme label="b" type="m">biê</rhyme>!</l>
        <l id="s8:l3" met="4" type="-+">Koomt, zeegnen wij deez' <rhyme label="a" type="m" corresp="#s8:l1">Broederband</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Door 't heilig driemaal <rhyme label="b" type="m" corresp="#s8:l2">drie</rhyme>.</l>
      </lg>
    </lg>
  </text>
