  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VErnederde <rhyme label="a" type="f">ghemoeden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die 't hooghste lieft en <rhyme label="b" type="m">eert</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En die de sinnen <rhyme label="a" type="f" corresp="#s1:l1">voeden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">met 't gheen den Ziel-wegh <rhyme label="b" type="m" corresp="#s1:l2">leert</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">V laege sin // u liefd' en <rhyme label="c" type="m">minn'</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En Goddelijcke <rhyme label="d" type="f">wercken</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Die sullen staegh // u alle <rhyme label="e" type="m">daegh</rhyme></l>
        <l id="s1:l8" met="3" type="-+">In uwe loop-baen <rhyme label="d" type="f" corresp="#s1:l6">stercken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Godt heeft een <rhyme label="a" type="f">welbehaghen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Aen een ootmoedigh <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat Goddelijck <rhyme label="a" type="f" corresp="#s2:l1">verslaghen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om sijn ghebreecken <rhyme label="b" type="m" corresp="#s2:l2">werdt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dat sucht en weent // dat klaeght en <rhyme label="c" type="m">steent</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Met jammer, om sijn <rhyme label="d" type="f">sonden</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Die sal hy drae // uyt puer <rhyme label="e" type="m">ghenae</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Ghenesen al sijn <rhyme label="d" type="f" corresp="#s2:l6">wonden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy sandt sijn Soon <rhyme label="a" type="f">beneden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En liet hem om den <rhyme label="b" type="m">mensch</rhyme></l>
        <l id="s3:l3" met="3" type="-+">De stranghe Wijn-pers <rhyme label="a" type="f" corresp="#s3:l1">treden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot onsen troost en <rhyme label="b" type="m" corresp="#s3:l2">wensch</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Om hem, die doet // oprechte <rhyme label="c" type="m">boet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">De feylen te <rhyme label="d" type="f">vergheven</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Wel hem, die sal,, uyt 't aerdtsche <rhyme label="e" type="m">dal</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ten Hemel zijn <rhyme label="d" type="f" corresp="#s3:l6">verheven</rhyme>.</l>
      </lg>
    </lg>
  </text>
