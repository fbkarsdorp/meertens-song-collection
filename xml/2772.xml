  <author>Bernardus Busschoff</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs ick als een Duyve <rhyme label="a" type="f">kirre</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Om dat my de ziele <rhyme label="b" type="m">smert</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Legh ick stracks een bundel <rhyme label="a" type="f" corresp="#s1:l1">Mirre</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Op 't benoud' en flaeuwe <rhyme label="b" type="m" corresp="#s1:l2">hert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Mirre bundelken <rhyme label="a" type="f">gebonden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Door mijns Heeren eygen <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Waer meed' hy die diepe <rhyme label="a" type="f" corresp="#s2:l1">wonden</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Van sijn Broeders sacht <rhyme label="b" type="m" corresp="#s2:l2">verbandt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Door die uyt-verkooren <rhyme label="a" type="f">Vrouwe</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die de Heer dees' boodtschap <rhyme label="b" type="m">gaf</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Aen sijn Vrienden die van <rhyme label="a" type="f" corresp="#s3:l1">rouwe</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Waren tot bezwijckens <rhyme label="b" type="m" corresp="#s3:l2">laf</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'k Gae tot mijn en uwen <rhyme label="a" type="f">Vader</rhyme>:</l>
        <l id="s4:l2" met="4" type="+-">'k Vaer tot mijn en uwen <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Alles heyls Fonteyn en <rhyme label="a" type="f" corresp="#s4:l1">ader</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Vindt mijn ziel in dit <rhyme label="b" type="m" corresp="#s4:l2">gebodt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">d' Algenoeghsaem Godt en <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Is mijn Godt, wat feylt my <rhyme label="b" type="m">nu</rhyme>?</l>
        <l id="s5:l3" met="4" type="+-">Niets is dat ick meer <rhyme label="a" type="f" corresp="#s5:l1">begeere</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Godt ick hebb' genoegh aen <rhyme label="b" type="m" corresp="#s5:l2">u</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Laet de wereldt gaen op <rhyme label="a" type="f">stelten</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Laets' aen duygen vallen <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Laet de Elementen <rhyme label="a" type="f" corresp="#s6:l1">smelten</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Laet de Hem'len gaen voor <rhyme label="b" type="m" corresp="#s6:l2">by</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'k Weet dat gy sult altijdt <rhyme label="a" type="f">blijven</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Eeuwigh zijn mijn Godt <rhyme label="b" type="m">getrouw</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Noyt en sal den tijdt u <rhyme label="a" type="f" corresp="#s7:l1">drijven</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Tot verand'ringh of <rhyme label="b" type="m" corresp="#s7:l2">berouw'</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Maer mijn Godt het raeckt my <rhyme label="a" type="f">nader</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Dat uw' Soon oock heeft <rhyme label="b" type="m">geseydt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Dat g' om sijnen 't wil mijn <rhyme label="a" type="f" corresp="#s8:l1">Vader</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Zijt en blijft in <rhyme label="b" type="m" corresp="#s8:l2">eeuwigheydt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Soo en ben ick dan geen <rhyme label="a" type="f">Weese</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Maer ick hebb' een Vader <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Die ick sonder schrick en <rhyme label="a" type="f" corresp="#s9:l1">vreese</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Als een kindt vertrouwen <rhyme label="b" type="m" corresp="#s9:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Dien ick dienen moet en <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">En in al zijn <rhyme label="b" type="m">onderdaen</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Vader wilt u Kindt doch <rhyme label="a" type="f" corresp="#s10:l1">leeren</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Recht in uwe wegen <rhyme label="b" type="m" corresp="#s10:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Eenigh Eeuwigh Vader, <rhyme label="a" type="f">Soone</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Wat is dit voor een <rhyme label="b" type="m">genae</rhyme>?</l>
        <l id="s11:l3" met="4" type="+-">Wat een eere, wat een <rhyme label="a" type="f" corresp="#s11:l1">Kroone</rhyme></l>
        <l id="s11:l4" met="4" type="+-">dat ick u soo nae <rhyme label="b" type="m" corresp="#s11:l2">bestae</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Dat uw' Vader is de <rhyme label="a" type="f">mijne</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">En wy Broeders onder <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Dat gy door uw's stervens <rhyme label="a" type="f" corresp="#s12:l1">pijne</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Wy uw' erfdeel maeckt <rhyme label="b" type="m" corresp="#s12:l2">gemeen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Hoe ick dan kom eer te <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Hoe mijn uur-glas eer <rhyme label="b" type="m">verloopt</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Hoe ick naerder ben te <rhyme label="a" type="f" corresp="#s13:l1">erven</rhyme></l>
        <l id="s13:l4" met="4" type="+-">'t Goet daer op mijn ziel nu <rhyme label="b" type="m" corresp="#s13:l2">hoopt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">d' Hoope sal my niet <rhyme label="a" type="f">bedriegen</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Dat getuyght mijn hert en <rhyme label="b" type="m">sin</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">'s Vaders hert en kan niet <rhyme label="a" type="f" corresp="#s14:l1">liegen</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Maer uw' herte noch veel <rhyme label="b" type="m" corresp="#s14:l2">min</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Sendt gy my hier straf of <rhyme label="a" type="f">zegen</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Quaet of goet, ick nemet <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Enckel goetheydt zijn die <rhyme label="a" type="f" corresp="#s15:l1">wegen</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Die gy goedt vindt in te <rhyme label="b" type="m" corresp="#s15:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Abba Vader sal ick <rhyme label="a" type="f">spreecken</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Als ick treed' in 't duyster <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Als de tongh al is <rhyme label="a" type="f" corresp="#s16:l1">bezweecken</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">'t Hert noch Vader seggen <rhyme label="b" type="m" corresp="#s16:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Vrienden wilt dees Mirrh' <rhyme label="a" type="f">gebruycken</rhyme>,</l>
        <l id="s17:l2" met="4" type="+-">Als gy u in flauwte <rhyme label="b" type="m">vindt</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">Want sy doet het hert <rhyme label="a" type="f" corresp="#s17:l1">ontluycken</rhyme>,/</l>
        <l id="s17:l4" met="4" type="+-">Als men s' op de borste <rhyme label="b" type="m" corresp="#s17:l2">bindt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
