    <melody>O Antwerpen uw triomf</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAren all' myn leden <rhyme label="a" type="f">tongen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Die altydt al even <rhyme label="b" type="m">seer</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Van de soete Liesde <rhyme label="a" type="f" corresp="#s1:l1">songhen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die ick draegh' tot u Ã´ <rhyme label="b" type="m" corresp="#s1:l2">Heer'</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Noch en soud' ick mynen <rhyme label="c" type="m">brandt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Die blaeckt in myn <rhyme label="c" type="m" corresp="#s1:l5">in-ghewant</rhyme></l>
        <l id="s1:l7" met="6" type="+-">Niet uyt-legghen door die tonghen <rhyme label="d" type="m">al-te-mael</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Want ick bemin u <rhyme label="e" type="m">meer</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">O alder-soetsten <rhyme label="e" type="m" corresp="#s1:l8">Heer'</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Als u segghen kan myn <rhyme label="d" type="m" corresp="#s1:l7">tael</rhyme></l>
        <l id="s1:l11" met="4" type="+-">[...]ier en Liefde branden <rhyme label="f" type="m">seer</rhyme>,</l>
        <l id="s1:l12" met="4" type="+-">Maer de Liefde brant noch <rhyme label="f" type="m" corresp="#s1:l11">meer</rhyme></l>
        <l id="s1:l13" met="6" type="+-">Uwe Liefde, Liefde, Liefde brandt <rhyme label="g" type="m">altydt</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">De Liefden, en het <rhyme label="h" type="m">Vier</rhyme></l>
        <l id="s1:l15" met="3" type="-+">En houden gheen <rhyme label="h" type="m" corresp="#s1:l14">manier</rhyme>,</l>
        <l id="s1:l16" met="4" type="+-">'k Min u in-der <rhyme label="g" type="m" corresp="#s1:l13">eeuwigheydt</rhyme>.</l>
        <l id="s1:l17" met="5" type="-+">Dat all' myn zenuwen en all' myn <rhyme label="i" type="f">pesen</rhyme></l>
        <l id="s1:l18" met="5" type="-+">Banden, en ketenen quamen te <rhyme label="i" type="f" corresp="#s1:l17">wesen</rhyme>,</l>
        <l id="s1:l19" met="5" type="-+">'k Soud' m'aen uw' Liefde vast binden met <rhyme label="i" type="f" corresp="#s1:l17">dese</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Jesu mynen soetsten <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dat ghy myn bloedt <rhyme label="b" type="m">al-te-gaer</rhyme></l>
        <l id="s2:l3" met="4" type="+-">In een Oli' woudt <rhyme label="a" type="f" corresp="#s2:l1">verkeeren</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Daer myn hert' de Lamp van <rhyme label="b" type="m" corresp="#s2:l2">waer</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">'k Stack die Oli' stracks in <rhyme label="c" type="m">brandt</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Tot een danckbaer <rhyme label="c" type="m" corresp="#s2:l5">offerhandt</rhyme></l>
        <l id="s2:l7" met="6" type="+-">Om dat ick u uyt gheheel myn hert', en <rhyme label="d" type="m">sin</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Uyt 't mergh van myn <rhyme label="e" type="m">ghemoet</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En uyt myns hertsen <rhyme label="e" type="m" corresp="#s2:l8">bloet</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">En uyt heel myn Ziel' <rhyme label="d" type="m" corresp="#s2:l7">bemin</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Ick bemin u meer als <rhyme label="f" type="m">my</rhyme></l>
        <l id="s2:l12" met="4" type="+-">Soeten Jesu om dat <rhyme label="f" type="m" corresp="#s2:l11">ghy</rhyme></l>
        <l id="s2:l13" met="6" type="+-">Om myn Liefde, Liefde, Liefde stirft de <rhyme label="g" type="m">doodt</rhyme>,</l>
        <l id="s2:l14" met="3" type="-+">En om dat uw soet <rhyme label="h" type="m">hert</rhyme></l>
        <l id="s2:l15" met="3" type="-+">Voor my door-steken <rhyme label="h" type="m" corresp="#s2:l14">wert</rhyme>,</l>
        <l id="s2:l16" met="4" type="+-">Wordt myn Liefde eens soo <rhyme label="g" type="m" corresp="#s2:l13">groot</rhyme>.</l>
        <l id="s2:l17" met="5" type="-+">Heer', ick en hebb' gheen hert meer, oft <rhyme label="i" type="f">sinnen</rhyme>,</l>
        <l id="s2:l18" met="5" type="-+">In my en is gheen Liefde van <rhyme label="i" type="f" corresp="#s2:l17">binnen</rhyme></l>
        <l id="s2:l19" met="5" type="-+">Als om u Lieven Jesu te <rhyme label="i" type="f" corresp="#s2:l17">minnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dat ick waer den Heer' der <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En den Godt van <rhyme label="b" type="m">Hemel-ryck</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat my toe-quam al uw' <rhyme label="a" type="f" corresp="#s3:l1">eere</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Het welck is <rhyme label="b" type="m" corresp="#s3:l2">onmoghelyck</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En dat ghy waert die ick <rhyme label="c" type="m">ben</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Ick belyd' en ick <rhyme label="c" type="m" corresp="#s3:l5">beken</rhyme></l>
        <l id="s3:l7" met="6" type="+-">Dat ick soude willen zyn uw <rhyme label="d" type="m">Creatuer</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Om dat ghy Godt soudt <rhyme label="e" type="m">zyn</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Ick seght soo ick het <rhyme label="e" type="m" corresp="#s3:l8">meyn</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Want de Liefde Godts is <rhyme label="d" type="m" corresp="#s3:l7">puer</rhyme>:</l>
        <l id="s3:l11" met="4" type="+-">Ghy fiet hoe myn <rhyme label="f" type="m">in-ghewant</rhyme></l>
        <l id="s3:l12" met="4" type="+-">Door uw Liefde blaeckt, en <rhyme label="f" type="m" corresp="#s3:l11">brant</rhyme></l>
        <l id="s3:l13" met="6" type="+-">En in Liefde, Liefde, Liefde gansch <rhyme label="g" type="m">verslenscht</rhyme>,</l>
        <l id="s3:l14" met="3" type="-+">Ghy siet hoe myn <rhyme label="h" type="m">ghemoedt</rhyme></l>
        <l id="s3:l15" met="3" type="-+">Uw uyver' vlammen <rhyme label="h" type="m" corresp="#s3:l14">voedt</rhyme>,</l>
        <l id="s3:l16" met="4" type="+-">En naer uwe Liefde <rhyme label="g" type="m" corresp="#s3:l13">wenscht</rhyme>.</l>
        <l id="s3:l17" met="5" type="-+">Jesu myn hert is met Liefde <rhyme label="i" type="f">bevanghen</rhyme>,</l>
        <l id="s3:l18" met="5" type="-+">Hoe langh sal ick noch naer u <rhyme label="i" type="f" corresp="#s3:l17">verlanghen</rhyme></l>
        <l id="s3:l19" met="5" type="-+">Eer ick u in myn hert' sal <rhyme label="i" type="f" corresp="#s3:l17">ontfanghen</rhyme>?</l>
      </lg>
    </lg>
  </text>
</song>
