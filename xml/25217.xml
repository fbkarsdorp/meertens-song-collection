  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Alderbeste scepper van <rhyme label="a" type="m">t'licht</rhyme></l>
        <l id="s1:l2" met="4" type="-+">der dagen licht <rhyme label="b" type="m">voorbrengende</rhyme></l>
        <l id="s1:l3" met="4" type="-+">ghij doer nieu licht beginsel <rhyme label="a" type="m" corresp="#s1:l1">sticht</rhyme></l>
        <l id="s1:l4" met="4" type="-+">werels begin, <rhyme label="b" type="m" corresp="#s1:l2">bereijdende</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Van den morgen tot den <rhyme label="a" type="m">auond</rhyme></l>
        <l id="s2:l2" met="4" type="-+">men noemet dach doer v <rhyme label="b" type="m">beuel</rhyme></l>
        <l id="s2:l3" met="4" type="-+">maer want aenstaet des nachs swaer <rhyme label="a" type="m" corresp="#s2:l1">stont</rhyme></l>
        <l id="s2:l4" met="4" type="-+">hoort ons gebet met tranen <rhyme label="b" type="m" corresp="#s2:l2">snel</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dat niet het hert besuaert met <rhyme label="a" type="m">sond</rhyme></l>
        <l id="s3:l2" met="4" type="-+">sij balling van vuijs leuens <rhyme label="b" type="m">gift</rhyme></l>
        <l id="s3:l3" met="4" type="-+">ter wijl dat niet ewichs <rhyme label="a" type="m" corresp="#s3:l1">begront</rhyme></l>
        <l id="s3:l4" met="4" type="-+">maer bestrijckt sijn selfs met sonds <rhyme label="b" type="m" corresp="#s3:l2">drift</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Laet t'hert cloppen voor s'hemels <rhyme label="a" type="m">throen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">laet het verdienen s'hemels <rhyme label="b" type="m">loen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">laet ontvlijden al hinder <rhyme label="a" type="m" corresp="#s4:l1">coen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">van al dat quaet is ons <rhyme label="b" type="m" corresp="#s4:l2">beuroen</rhyme></l>
      </lg>
    </lg>
  </text>
