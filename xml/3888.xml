  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk heb een traech <rhyme label="a" type="m">eselkijn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat valt mi suer om <rhyme label="b" type="f">timmen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Dat is dat arme lichaem <rhyme label="c" type="m">mijn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Hoe gaerne sou ic hem <rhyme label="b" type="f" corresp="#s1:l2">dwingen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hi leuert mi so menigen <rhyme label="a" type="m">strijt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hi maket mi soe <rhyme label="b" type="f">suere</rhyme></l>
        <l id="s2:l3" met="4" type="-+">O lieue heere dat claech ick <rhyme label="c" type="m">dy</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Helpt mi mijn eselken <rhyme label="b" type="f" corresp="#s2:l2">vueren</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ic wil mijn eselken temmen <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ende houden hem onder die <rhyme label="b" type="f">roede</rhyme></l>
        <l id="s3:l3" met="4" type="-+">So moet hi mi gehoorsaem <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Aldoet hijt also <rhyme label="b" type="f" corresp="#s3:l2">node</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ten eten is hi wel <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Noode wil hi sober <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Wanneer hem yemant yet <rhyme label="c" type="m">misseyt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Daer tegen wil hi <rhyme label="b" type="f" corresp="#s4:l2">streuen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wanneer sijn cribbe is wel <rhyme label="a" type="m">gheuult</rhyme></l>
        <l id="s5:l2" met="3" type="-+">So is hi also <rhyme label="b" type="f">blide</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Hi gaet so node wt sinen <rhyme label="c" type="m">spoer</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ghewelt so moet hi <rhyme label="b" type="f" corresp="#s5:l2">liden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Tsauonds wil hi slapen <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Men derf hem daer toe niet <rhyme label="b" type="f">driuen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Mer smorgens als hi op sal <rhyme label="c" type="m">staen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">So wil hi langher <rhyme label="b" type="f" corresp="#s6:l2">bliuen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wanneer mijn eselken dus weeldich <rhyme label="a" type="m">wert</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dan en doet hi niet dan <rhyme label="b" type="f">claghen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Der minnen iock is hem te <rhyme label="c" type="m">swaer</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Noode wil hi hitte <rhyme label="b" type="f" corresp="#s7:l2">verdragen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och woude hem mijn <rhyme label="a" type="m">eselkijn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Hier een weynich <rhyme label="b" type="f">liden</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Al op den berch van <rhyme label="c" type="m">Israhel</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Daer sal hi namaels <rhyme label="b" type="f" corresp="#s8:l2">weyden</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Daer is een weyde also <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Ende also goet van <rhyme label="b" type="f">smaken</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Daer soude hem mijn <rhyme label="c" type="m">eselkijn</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Och also wel <rhyme label="b" type="f" corresp="#s9:l2">vermaken</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De riuierkens sijn daer also <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Die daer onder die berghen <rhyme label="b" type="f">vlieten</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Daer suldy af drincken mijn <rhyme label="c" type="m">eselkijn</rhyme></l>
        <l id="s10:l4" met="3" type="-+">En lates v niet <rhyme label="b" type="f" corresp="#s10:l2">verdrieten</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Die dit liedeken heeft <rhyme label="a" type="m">gedicht</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Si was noch cout van <rhyme label="b" type="f">minnen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Si heeft een traech <rhyme label="c" type="m">eselkijn</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Hoe gaerne soudesi hem <rhyme label="b" type="f" corresp="#s11:l2">dwingen</rhyme></l>
      </lg>
    </lg>
  </text>
