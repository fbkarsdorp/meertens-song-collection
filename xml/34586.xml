    <melody>Guidons notre vaisseau</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GOu Stier-man in het <rhyme label="a" type="m">schip</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wy willen henen <rhyme label="b" type="f">varen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wt on-we'er en uyt <rhyme label="a" type="m" corresp="#s1:l1">klip</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wt 't stormen van de <rhyme label="b" type="f" corresp="#s1:l2">baren</rhyme>,</l>
        <l id="s1:l5" met="6" type="-+">Wy soecken sangh, en jock, en guychelry, en <rhyme label="c" type="m">spel</rhyme>,</l>
        <l id="s1:l6" met="6" type="-+">En dat den besten wyn, Het voeder zy van 't <rhyme label="c" type="m" corresp="#s1:l5">vel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wy willen langhs den <rhyme label="a" type="m">Rhyn</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ons schipken wel doen <rhyme label="b" type="f">hellen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer dat door goeden <rhyme label="a" type="m" corresp="#s2:l1">wyn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En lecker <rhyme label="b" type="f" corresp="#s2:l2">Muskadellen</rhyme>;</l>
        <l id="s2:l5" met="6" type="-+">Wy soecken sangh , en jock, en guychelry, en <rhyme label="c" type="m">spel</rhyme>,</l>
        <l id="s2:l6" met="6" type="-+">En dat den besten wyn het voeder zy van't <rhyme label="c" type="m" corresp="#s2:l5">vel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O Bacchus goeden <rhyme label="a" type="m">snul</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Leert ons u Godtheyt <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat ick het lichaem <rhyme label="a" type="m" corresp="#s3:l1">vul</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En lach met fraeye <rhyme label="b" type="f" corresp="#s3:l2">kle'eren</rhyme>,</l>
        <l id="s3:l5" met="6" type="-+">En laet my nimmer iet beminnen, dan het <rhyme label="c" type="m">goedt</rhyme></l>
        <l id="s3:l6" met="6" type="-+">Daer eenen goeden teugh van Rhynschen dauw <rhyme label="c" type="m" corresp="#s3:l5">op</rhyme> [...].</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wegh staet-sucht uyt ons <rhyme label="a" type="m">lyf</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wegh dobbel <rhyme label="b" type="f">Politiecken</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Doch goeden Kock ey <rhyme label="a" type="m" corresp="#s4:l1">blyf</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met u kapoen en <rhyme label="b" type="f" corresp="#s4:l2">kiecken</rhyme>,</l>
        <l id="s4:l5" met="6" type="-+">Ick haet de Muyters, die het Landt tot on-rust <rhyme label="c" type="m">zyn</rhyme>.</l>
        <l id="s4:l6" met="6" type="-+">En soo ick maeck gherucht, 't is by den koelen <rhyme label="c" type="m" corresp="#s4:l5">wyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ick haet den <rhyme label="a" type="m">Medecyn</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En d'Apotekers <rhyme label="b" type="f">pillen</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Maer met den Rhynschen <rhyme label="a" type="m" corresp="#s5:l1">wyn</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Verherd' ick myne <rhyme label="b" type="f" corresp="#s5:l2">billen</rhyme>,</l>
        <l id="s5:l5" met="6" type="-+">'k Vind' myn ghesondtheyt in de potten, glas, en <rhyme label="c" type="m">krous</rhyme>,</l>
        <l id="s5:l6" met="6" type="-+">En die-men welvaert soeckt, die seght my eens A <rhyme label="c" type="m" corresp="#s5:l5">vous</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>
