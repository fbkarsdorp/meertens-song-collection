  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">PHilis ’t is mijn seecker <rhyme label="a" type="m">leedt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Datje nimmer staet <rhyme label="a" type="m" corresp="#s1:l1">ghereedt</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Voor mijn kusjes, want ick <rhyme label="b" type="f">eerje</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En dan roepje scheerjeme, ‘k <rhyme label="b" type="f" corresp="#s1:l3">scheerje</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En dan roepje ‘k scheerje <rhyme label="c" type="m">weer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">’t Minste wesen dat ick <rhyme label="a" type="m">maeck</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Als ick maer een vinger <rhyme label="a" type="m" corresp="#s2:l1">raeck</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">’t Is terstont, wel wat <rhyme label="b" type="f">begeerje</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">En dan roepje scheerjeme, ‘k <rhyme label="b" type="f" corresp="#s2:l3">scheerje</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">En dan roepje ‘k scheerje <rhyme label="c" type="m">weer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Soo ick maer u borstgens <rhyme label="a" type="m">grijp</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die haest sullen wesen <rhyme label="a" type="m" corresp="#s3:l1">rijp</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Seghje, laet dat, of ick <rhyme label="b" type="f">leerje</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">En dan roepje scheerjeme, ‘k <rhyme label="b" type="f" corresp="#s3:l3">scheerje</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En dan roepje ‘k scheerje <rhyme label="c" type="m">weer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Spreeck ick van mijn <rhyme label="a" type="m">Minne-brandt</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">’t Is, ghy hebt doch geen <rhyme label="a" type="m" corresp="#s4:l1">verstant</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Benje Geck, <rhyme label="b" type="f">extravageerje</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En dan roepje scheerjeme, ‘k <rhyme label="b" type="f" corresp="#s4:l3">scheerje</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En dan roepje ‘k scheerje <rhyme label="c" type="m">weer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Prijs ick u volmaeckt <rhyme label="a" type="m">ghesicht</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Met discoursen of <rhyme label="a" type="m" corresp="#s5:l1">ghedicht</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Soo het schijnt, ick <rhyme label="b" type="f">affronteerje</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En dan roepje scheerjeme, ‘k <rhyme label="b" type="f" corresp="#s5:l3">scheerje</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">En dan roepje ‘k scheerje <rhyme label="c" type="m">weer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Maeckt ten minsten dat ick <rhyme label="a" type="m">weet</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Waerom ghy my valt soo <rhyme label="a" type="m" corresp="#s6:l1">wreet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ghy bekijft my, en ick <rhyme label="b" type="f">eerje</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En dan roepje scheerjeme, ‘k <rhyme label="b" type="f" corresp="#s6:l3">scheerje</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">En dan roepje ‘k scheerje <rhyme label="c" type="m">weer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Immers ben ick soo ghy <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Van het Scheerders hantwerk <rhyme label="a" type="m" corresp="#s7:l1">niet</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Ick barbierje, noch <rhyme label="b" type="f">raseerje</rhyme>?</l>
        <l id="s7:l4" met="4" type="+-">Nochtans roepje scheerjeme ‘k <rhyme label="b" type="f" corresp="#s7:l3">scheerje</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Nochtans roepje ‘k scheerje <rhyme label="c" type="m">weer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
