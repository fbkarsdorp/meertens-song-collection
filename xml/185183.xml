    <tags/>
    <melody>Aanhoor toch mijn geklaag gij ruiters</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Den tijt is nu na <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat wy nu sullen <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met het lichaem hoort <rhyme label="a" type="m" corresp="#s1:l1">my</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maer met den Geest seer <rhyme label="a" type="m" corresp="#s1:l1">vry</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En scheyd’ ick niet van <rhyme label="a" type="m" corresp="#s1:l1">dy</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wy sullen eeuwig <rhyme label="a" type="m" corresp="#s1:l1">bly</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">By onsen Godt <rhyme label="b" type="f" corresp="#s1:l2">vermeyden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dit is dat ons <rhyme label="a" type="m">verblyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dees hope vast <rhyme label="b" type="f">inwendich</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Gheeft Godt in deser <rhyme label="a" type="m" corresp="#s2:l1">tijt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En maeckt ons ziel <rhyme label="a" type="m" corresp="#s2:l1">verblijt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Waer door sy menich <rhyme label="a" type="m" corresp="#s2:l1">strijt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Verwint met grooter <rhyme label="a" type="m" corresp="#s2:l1">vlijt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Rust in een vreucht <rhyme label="b" type="f" corresp="#s2:l2">on-endigh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Weest hier mede <rhyme label="a" type="m">gegroet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">In den name des <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Wensch ick u vrede <rhyme label="a" type="m" corresp="#s3:l1">soet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghelijck een balsems <rhyme label="a" type="m" corresp="#s3:l1">vloet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Te smaken in ‘t <rhyme label="a" type="m" corresp="#s3:l1">ghemoet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Adieu mijn vrienden <rhyme label="a" type="m" corresp="#s3:l1">goet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Adieu ick neem mijn <rhyme label="b" type="f" corresp="#s3:l2">keere</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
