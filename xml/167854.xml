  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Verhoogde Heiland! trek ons <rhyme label="a" type="m">hart</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Uit vrees en <rhyme label="a" type="m" corresp="#s1:l1">smart</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Tot U naar <rhyme label="b" type="f">boven</rhyme>!</l>
        <l id="s1:l4" met="4" type="-+">Wij willen, door uw Geest <rhyme label="c" type="m">geleid</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">In <rhyme label="c" type="m" corresp="#s1:l4">nedrigheid</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Uw woord <rhyme label="b" type="f" corresp="#s1:l3">gelooven</rhyme>.</l>
        <l id="s1:l7" met="4" type="-+">De waarheid straal' ons helder <rhyme label="d" type="m">aan</rhyme>!</l>
        <l id="s1:l8" met="2" type="-+">Leer ons <rhyme label="d" type="m" corresp="#s1:l7">verstaan</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Wat Gij zult <rhyme label="e" type="f">schenken</rhyme>;</l>
        <l id="s1:l10" met="4" type="-+">En doe ons saam, bij Godlijk <rhyme label="f" type="m">licht</rhyme>.</l>
        <l id="s1:l11" met="2" type="+-">Naar lust en <rhyme label="f" type="m" corresp="#s1:l10">pligt</rhyme>,</l>
        <l id="s1:l12" met="2" type="-+">Uw dood <rhyme label="e" type="f" corresp="#s1:l9">gedenken</rhyme>.</l>
      </lg>
    </lg>
