  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe op den Heere zich <rhyme label="a" type="f">betrouwen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Staan vast ten allen <rhyme label="b" type="m">stondt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Als Sions berg <rhyme label="b" type="m" corresp="#s1:l2">gegrondt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dien Godt in eeuwigheit zal <rhyme label="a" type="f" corresp="#s1:l1">bouwen</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Zoodatze wanklen noch <rhyme label="c" type="f">beweegen</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Door 's hemels <rhyme label="c" type="f" corresp="#s1:l5">zegen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Rontom Jeruzalem zyn <rhyme label="a" type="f">bergen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Alzoo is ook de <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Rontom zyn volk, vol <rhyme label="b" type="m" corresp="#s2:l2">eer</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Opdat de boozen, door hun <rhyme label="a" type="f" corresp="#s2:l1">tergen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">En trots, de vroomen niet <rhyme label="c" type="f">verdrukken</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Tot datze <rhyme label="c" type="f" corresp="#s2:l5">bukken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want zekerlyk de staf der <rhyme label="a" type="f">boozen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Rust altoos niet op 't <rhyme label="b" type="m">lot</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Der vroomen, tot hun <rhyme label="b" type="m" corresp="#s3:l2">spot</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">Opdat d'oprechten, als <rhyme label="a" type="f" corresp="#s3:l1">godtloozen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hun handen niet tot onrecht <rhyme label="c" type="f">strekken</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Noch zich <rhyme label="c" type="f" corresp="#s3:l5">bevlekken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Heer, doe den goeden wel, wier <rhyme label="a" type="f">harten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Oprecht zyn. al die <rhyme label="b" type="m">gaan</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Op eene kromme <rhyme label="b" type="m" corresp="#s4:l2">baan</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Verdelgt de Heer in veele <rhyme label="a" type="f" corresp="#s4:l1">smarten</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Met die het onrecht werken: <rhyme label="c" type="f">vrede</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Volge Isrels <rhyme label="c" type="f" corresp="#s4:l5">bede</rhyme>.</l>
      </lg>
    </lg>
  </text>
