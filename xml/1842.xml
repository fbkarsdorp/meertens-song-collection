  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="6" type="+-">SChoone die mijn hert en ziele heeft <rhyme label="a" type="m">ghewont</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Door u ghesicht maack weer <rhyme label="a" type="m" corresp="#s1:l1">ghesont</rhyme>,</l>
        <l id="s1:l3" met="5" type="+-">Eer dat mijn leven door droefheyt ende <rhyme label="b" type="m">smert</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Iongh afghehouwen <rhyme label="b" type="m" corresp="#s1:l3">wert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="6" type="+-">Ziele van mijn ziel, Goddinne van mijn <rhyme label="a" type="m">vreucht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Waar toe verslijt ghy dus u <rhyme label="a" type="m" corresp="#s2:l1">jeucht</rhyme>,</l>
        <l id="s2:l3" met="5" type="+-">Daar u u gaven van ’s Hemels <rhyme label="b" type="m">schoonicheyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Raen tot <rhyme label="b" type="m" corresp="#s2:l3">bermherticheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="6" type="+-">Condt ghy mijn verbien te minnen u <rhyme label="a" type="m">gesicht</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Daar in mijn ziel besloten <rhyme label="a" type="m" corresp="#s3:l1">licht</rhyme>,</l>
        <l id="s3:l3" met="5" type="+-">Al u afwijsen te nemen in den <rhyme label="b" type="m">sin</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Voor de weer-liefd’ en <rhyme label="b" type="m" corresp="#s3:l3">Min</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="6" type="+-">Waerom acht ghy doch de hoogheyt alsoo <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">De grootse pracht en yd’le <rhyme label="a" type="m" corresp="#s4:l1">eer</rhyme>,</l>
        <l id="s4:l3" met="5" type="+-">Dat ghy versmadet eenen die hem <rhyme label="b" type="m">bevint</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met deuchden, en u <rhyme label="b" type="m" corresp="#s4:l3">mint</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="6" type="+-">Haat ghy dus u vriendt die boven al dat <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">V in sijn hert gebeeldet <rhyme label="a" type="m" corresp="#s5:l1">heeft</rhyme>,</l>
        <l id="s5:l3" met="5" type="+-">Wat doet ghy dan u vyandt die u <rhyme label="b" type="m">haat</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En toewenst alle <rhyme label="b" type="m" corresp="#s5:l3">quaat</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="6" type="+-">Gunt mijn maar o vrou mijns levens <rhyme label="a" type="m">onderhoudt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat ick u eens, niet <rhyme label="a" type="m" corresp="#s6:l1">menichfout</rhyme>,</l>
        <l id="s6:l3" met="5" type="+-">Mijn droeve klacht en innerlijcke <rhyme label="b" type="m">rou</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Vertellen mach o <rhyme label="b" type="m" corresp="#s6:l3">vrou</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
