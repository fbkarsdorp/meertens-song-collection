  <author>Gillis Jacobsz. Quintijn</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ach! Ian, mijn soeter <rhyme label="a" type="m">MIN</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">'tVermaeck van mijn <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">UVat! was't my lief <rhyme label="a" type="m" corresp="#s1:l1">gewin</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dijn soentjens in te <rhyme label="b" type="f" corresp="#s1:l2">wachten</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Nu moet ick, tot mijn <rhyme label="c" type="m">leet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die soete vreugde <rhyme label="d" type="f">derven</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Dies ben ick mee <rhyme label="c" type="m" corresp="#s1:l5">gereet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Om treurig been te <rhyme label="d" type="f" corresp="#s1:l6">sterven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Laet ons dan bene <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Tot eynde deser <rhyme label="b" type="f">saecken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Om, in den <rhyme label="a" type="m" corresp="#s2:l1">KLEVER-LAEN</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Os duyn, een graf te <rhyme label="b" type="f" corresp="#s2:l2">maecken</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Op dat wy onse <rhyme label="c" type="m">smart</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Daer in <rhyme label="d" type="f">vergete-mogen</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Want, ick gevoel mijn <rhyme label="c" type="m" corresp="#s2:l5">hart</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Met droef heyt <rhyme label="d" type="f" corresp="#s2:l6">overtogen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ey, wil mijn vreugde <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Op dat wy, metten <rhyme label="b" type="f">andren</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Tot laving van de <rhyme label="a" type="m" corresp="#s3:l1">pijn</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Na buyten toe gaen <rhyme label="b" type="f" corresp="#s3:l2">wandren</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Nadien wy niet <rhyme label="c" type="m">by-een</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ter buyrte mogen <rhyme label="d" type="f">komen</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">So laet wy twee <rhyme label="c" type="m" corresp="#s3:l5">alleen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Gaen onder groene <rhyme label="d" type="f" corresp="#s3:l6">bomen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wie weet, of onse <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die nu schijnt heel <rhyme label="b" type="f">verloren</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Niet sou, door <rhyme label="a" type="m" corresp="#s4:l1">veld-geneugd</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Weer rysen, als te <rhyme label="b" type="f" corresp="#s4:l2">voren</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Al isset <rhyme label="c" type="m">BUYR-VERGAER</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Verstoort, door <rhyme label="d" type="f">Dichte-Fchryven</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Wy kaunen, voor en <rhyme label="c" type="m" corresp="#s4:l5">naer</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Een dag uyt Haerlem <rhyme label="d" type="f" corresp="#s4:l6">blyven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mijn Moeije woont op't <rhyme label="a" type="m">Landt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die kan ick gaen <rhyme label="b" type="f">befaecken</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Daer kunje, deur het <rhyme label="a" type="m" corresp="#s5:l1">sandt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Meer brengen van de <rhyme label="b" type="f" corresp="#s5:l2">Broecken</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Griet, Ael, met onse <rhyme label="c" type="m">Stijn</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">My sullen mee <rhyme label="d" type="f">geleyden</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Dus willen wy daer <rhyme label="c" type="m" corresp="#s5:l5">sijn</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Heel blyde, voor <rhyme label="d" type="f" corresp="#s5:l6">wyscheyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Laet dan de <rhyme label="a" type="m">Breecke-spel</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die niet met ons wil <rhyme label="b" type="f">mallen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Daer eenen <rhyme label="a" type="m" corresp="#s6:l1">Iongesel</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die wijs is, <rhyme label="b" type="f" corresp="#s6:l2">wel-gevallen</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Wy willen weer <rhyme label="c" type="m">geneugd</rhyme></l>
        <l id="s6:l6" met="3" type="-+">En soeter Minne <rhyme label="d" type="f">plegen</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Want, ick ben tot de <rhyme label="c" type="m" corresp="#s6:l5">Deugd</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Toch genezins <rhyme label="d" type="f" corresp="#s6:l6">genegen</rhyme>.</l>
      </lg>
    </lg>
  </text>
