  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-"><rhyme label="a" type="f">AMarille</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ghy die alleen mijn <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Hebt in ‘t <rhyme label="c" type="m">ghebiedt</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Ist u <rhyme label="a" type="f" corresp="#s1:l1">wille</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ghy keunt my wel troost <rhyme label="b" type="f" corresp="#s1:l2">gheven</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">In dit <rhyme label="c" type="m" corresp="#s1:l3">verdriet</rhyme>,</l>
        <l id="s1:l7" met="5" type="-+">Ick die nu, langh heb’ ghebeden <rhyme label="d" type="m">u</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">O <rhyme label="e" type="f">Herderinne</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Of ick u <rhyme label="e" type="f" corresp="#s1:l8">minne</rhyme></l>
        <l id="s1:l10" met="2" type="+-">Eens weer mocht <rhyme label="e" type="f" corresp="#s1:l8">winne</rhyme>:</l>
        <l id="s1:l11" met="5" type="-+">Maer even straf, ghy zijt, ghy zijt, ghy <rhyme label="f" type="m">zijt</rhyme></l>
        <l id="s1:l12" met="4" type="+-">Niet als in voorleden <rhyme label="f" type="m" corresp="#s1:l11">tijdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Doen wy <rhyme label="a" type="f">beyden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Noch waren jonghe <rhyme label="b" type="f">spruyten</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Was ick u <rhyme label="c" type="m">Lief</rhyme>,</l>
        <l id="s2:l4" met="2" type="+-">Doen elck <rhyme label="a" type="f" corresp="#s2:l1">weyden</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Sijn Vee en Schaepjes <rhyme label="b" type="f" corresp="#s2:l2">buyten</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Tot ons <rhyme label="c" type="m" corresp="#s2:l3">gherief</rhyme>,</l>
        <l id="s2:l7" met="5" type="-+">Doen de min, nam eerstmael haer <rhyme label="d" type="m">begin</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">En ick u <rhyme label="e" type="f">vrijden</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Tot allen <rhyme label="e" type="f" corresp="#s2:l8">tijden</rhyme>,</l>
        <l id="s2:l10" met="2" type="+-">Mocht ghy ‘t wel <rhyme label="e" type="f" corresp="#s2:l8">lijden</rhyme>:</l>
        <l id="s2:l11" met="5" type="-+">Maer ‘t is nu heel verkeert, verkeert, <rhyme label="f" type="m">verkeert</rhyme>,</l>
        <l id="s2:l12" met="4" type="+-">Nu ghy hebt in ‘t Hof <rhyme label="f" type="m" corresp="#s2:l11">gheleert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Tot een <rhyme label="a" type="f">ander</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Zijt ghy nu meer <rhyme label="b" type="f">ghenegen</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Hoe komet <rhyme label="c" type="m">by</rhyme>?</l>
        <l id="s3:l4" met="2" type="+-">Kan <rhyme label="a" type="f" corresp="#s3:l1">Philander</rhyme></l>
        <l id="s3:l5" met="3" type="-+">V dan niet meer <rhyme label="b" type="f" corresp="#s3:l2">beweghen</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Door sijn <rhyme label="c" type="m" corresp="#s3:l3">ghevry</rhyme>?</l>
        <l id="s3:l7" met="5" type="-+">Is mijn staet te slecht, of mijn <rhyme label="d" type="m">gewaet</rhyme>?</l>
        <l id="s3:l8" met="2" type="-+">‘k Sout schier <rhyme label="e" type="f">ghelooven</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Ben ick <rhyme label="e" type="f" corresp="#s3:l8">verschooven</rhyme>,</l>
        <l id="s3:l10" met="2" type="+-">Om dat ick ‘t <rhyme label="e" type="f" corresp="#s3:l8">Hoven</rhyme></l>
        <l id="s3:l11" met="5" type="-+">Niet kan? al even rat, soo rat, soo <rhyme label="f" type="m">rat</rhyme></l>
        <l id="s3:l12" met="4" type="+-">Als de Ionckers van de <rhyme label="f" type="m" corresp="#s3:l11">Stadt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Die vol <rhyme label="a" type="f">treecken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In ‘t minnen zijn, en <rhyme label="b" type="f">veynsen</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Haer als <rhyme label="c" type="m">oprecht</rhyme>:</l>
        <l id="s4:l4" met="2" type="+-">Maer <rhyme label="a" type="f" corresp="#s4:l1">spreecken</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Heel anders dan sy <rhyme label="b" type="f" corresp="#s4:l2">peynsen</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">En ‘t Meysje <rhyme label="c" type="m" corresp="#s4:l3">slecht</rhyme></l>
        <l id="s4:l7" met="5" type="-+">Wort verleydt, door haer <rhyme label="d" type="m">bedrieghlijckheydt</rhyme>:</l>
        <l id="s4:l8" met="2" type="-+">Dus laet u <rhyme label="e" type="f">raden</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Of ‘t sal u <rhyme label="e" type="f" corresp="#s4:l8">schaden</rhyme>,</l>
        <l id="s4:l10" met="2" type="+-">Wilt niet <rhyme label="e" type="f" corresp="#s4:l8">versmaden</rhyme></l>
        <l id="s4:l11" met="5" type="-+">‘t Geen u een Herder riet, hy riet, hy <rhyme label="f" type="m">riet</rhyme>,</l>
        <l id="s4:l12" met="4" type="+-">Acht de steedsche Ionckers <rhyme label="f" type="m" corresp="#s4:l11">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="+-">Maer sy <rhyme label="a" type="f">vluchte</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van haer Philander <rhyme label="b" type="f">henen</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Ghelijck <rhyme label="c" type="m">verstoort</rhyme>,</l>
        <l id="s5:l4" met="2" type="+-">Of hy <rhyme label="a" type="f" corresp="#s5:l1">suchte</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Sy woud’ hem niet <rhyme label="b" type="f" corresp="#s5:l2">verleenen</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Een eenigh <rhyme label="c" type="m" corresp="#s5:l3">woordt</rhyme>,</l>
        <l id="s5:l7" met="5" type="-+">Amaril staet doch een weynigh <rhyme label="d" type="m">stil</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Houdt in <rhyme label="e" type="f">ghedachten</rhyme></l>
        <l id="s5:l9" met="2" type="-+">Al mijne <rhyme label="e" type="f" corresp="#s5:l8">klachten</rhyme>,</l>
        <l id="s5:l10" met="2" type="+-">Wilt niet <rhyme label="e" type="f" corresp="#s5:l8">verachten</rhyme></l>
        <l id="s5:l11" met="5" type="-+">Hem die u liefde draeght, toe draegt, toe <rhyme label="f" type="m">draegt</rhyme>,</l>
        <l id="s5:l12" met="4" type="+-">Eer ghy ‘t u te laet <rhyme label="f" type="m" corresp="#s5:l11">beklaeght</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
