  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIe wilt op geschreven <rhyme label="a" type="f">wordẽ</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Bachus neemt Soldatẽ <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Op de Bier-banck is 't <rhyme label="a" type="f" corresp="#s1:l1">slagh-orden</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Daer wy moeten vechten <rhyme label="b" type="m" corresp="#s1:l2">gaen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">d'Herbergh is den Rende <rhyme label="c" type="m">vous</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Het woordt is 'k brenghet u oft à <rhyme label="c" type="m" corresp="#s1:l5">vous</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Vecht knecht, doot kees en <rhyme label="d" type="m">Broot</rhyme>,</l>
        <l id="s1:l8" met="1" type="-+">Schinckt, <rhyme label="e" type="m">drinckt</rhyme></l>
        <l id="s1:l9" met="3" type="-+">'t Ghelasen Trompet dat <rhyme label="e" type="m" corresp="#s1:l8">klinckt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Bacchus-tonne is de <rhyme label="a" type="f">Trommel</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Die m'in diën Oorlogh <rhyme label="b" type="m">slaet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Want men suypt daer als de <rhyme label="a" type="f" corresp="#s2:l1">Drommel</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Dat den Buyck ghespannen <rhyme label="b" type="m" corresp="#s2:l2">staet</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Als een Trommeltjen soo <rhyme label="c" type="m">brouw</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Datmer een Luys op kraken <rhyme label="c" type="m" corresp="#s2:l5">souw</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Vecht knecht, doot kees en <rhyme label="d" type="m">Broot</rhyme>,</l>
        <l id="s2:l8" met="1" type="-+">Schinckt, <rhyme label="e" type="m">drinckt</rhyme></l>
        <l id="s2:l9" met="3" type="-+">'t Ghelasen Trompet dat <rhyme label="e" type="m" corresp="#s2:l8">klinckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Bierbuyc hout dry <rhyme label="a" type="f">Compagnien</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Lauter Drincke-bruêrs in 't <rhyme label="b" type="m">velt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Om den Oorelogh te <rhyme label="a" type="f" corresp="#s3:l1">biën</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Aen dẽ dorst die 't Keilgat <rhyme label="b" type="m" corresp="#s3:l2">quelt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dicken Peer is <rhyme label="c" type="m">Colonel</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Hy brenght de Drincke-bruers elck een <rhyme label="c" type="m" corresp="#s3:l5">Snel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Vecht knecht, doot kees en <rhyme label="d" type="m">Broot</rhyme>,</l>
        <l id="s3:l8" met="1" type="-+">Schinckt, <rhyme label="e" type="m">drinckt</rhyme></l>
        <l id="s3:l9" met="3" type="-+">'t Ghelasen Trompet dat <rhyme label="e" type="m" corresp="#s3:l8">klinckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hy coragie <rhyme label="a" type="f">Jan-potagie</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Drinckt dat synen neus wordt <rhyme label="b" type="m">root</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'t Is een teecken van <rhyme label="a" type="f" corresp="#s4:l1">coragie</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Van coragie die is <rhyme label="b" type="m" corresp="#s4:l2">groot</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Treckt met hem dan naer het <rhyme label="c" type="m">Velt</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Daer ons noch honger, noch dorst en <rhyme label="c" type="m" corresp="#s4:l5">quelt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Vecht knecht, doot kees en <rhyme label="d" type="m">Broot</rhyme>,</l>
        <l id="s4:l8" met="1" type="-+">Schinckt, <rhyme label="e" type="m">drinckt</rhyme></l>
        <l id="s4:l9" met="3" type="-+">'t Ghelasen Trompet dat <rhyme label="e" type="m" corresp="#s4:l8">klinckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Tapt nu Wyn in <rhyme label="a" type="f">abundanti'</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Drinckt eer dat gy vechten <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Eenen teugh van <rhyme label="a" type="f" corresp="#s5:l1">asseuranti'</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Op dat ghy den dorst <rhyme label="b" type="m" corresp="#s5:l2">verslaet</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Hanght aen uwen <rhyme label="c" type="m">Bandelier</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Acht oft 'thien Snellen van 't sterckste <rhyme label="c" type="m" corresp="#s5:l5">Bier</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Vecht knecht, doot kees en <rhyme label="d" type="m">Broot</rhyme>,</l>
        <l id="s5:l8" met="1" type="-+">Schinckt, <rhyme label="e" type="m">drinckt</rhyme></l>
        <l id="s5:l9" met="3" type="-+">'t Ghelasen Trompet dat <rhyme label="e" type="m" corresp="#s5:l8">klinckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Valt daer iemandt in <rhyme label="a" type="f">gebreken</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Van het laet-kruyt oft de <rhyme label="b" type="m">lont</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Hy magh syn gelas <rhyme label="a" type="f" corresp="#s6:l1">aen-steken</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Met een Worstjen van een <rhyme label="b" type="m" corresp="#s6:l2">pont</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Dat hy als den strydt aen <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Op syn Taillioorken de Trommel <rhyme label="c" type="m" corresp="#s6:l5">slaet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Vecht knecht, doot kees en <rhyme label="d" type="m">Broot</rhyme>,</l>
        <l id="s6:l8" met="1" type="-+">Schinckt, <rhyme label="e" type="m">drinckt</rhyme></l>
        <l id="s6:l9" met="3" type="-+">'t Ghelasen Trompet dat <rhyme label="e" type="m" corresp="#s6:l8">klinckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Syn de Kieckens u <rhyme label="a" type="f">vyanden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Die op tafel zyn <rhyme label="b" type="m">gheset</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Neemt voor 't Sweert een Mes in <rhyme label="a" type="f" corresp="#s7:l1">d'handen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Voor den Sluyer een <rhyme label="b" type="m" corresp="#s7:l2">Servet</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Soyt hun Neus en ooren <rhyme label="c" type="m">af</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">En maeckt van uwen Buyc dan hun <rhyme label="c" type="m" corresp="#s7:l5">Graf</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Vecht knecht, doot kees en <rhyme label="d" type="m">Broot</rhyme>,</l>
        <l id="s7:l8" met="1" type="-+">Schinckt, <rhyme label="e" type="m">drinckt</rhyme></l>
        <l id="s7:l9" met="3" type="-+">'t Ghelasen Trompet dat <rhyme label="e" type="m" corresp="#s7:l8">klinckt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Die in Bachus Oorlog <rhyme label="a" type="f">schermẽ</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Maken wel hun beenen <rhyme label="b" type="m">slap</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Maer s'en breken Been oft <rhyme label="a" type="f" corresp="#s8:l1">Ermen</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Door de kracht van't <rhyme label="b" type="m" corresp="#s8:l2">druyve-sap</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Doet hun hooft wat seer daer <rhyme label="c" type="m">naer</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Sy nemen smorgens van 't selve <rhyme label="c" type="m" corresp="#s8:l5">hair</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Vecht knecht, doot kees en <rhyme label="d" type="m">Broot</rhyme>,</l>
        <l id="s8:l8" met="1" type="-+">Schinckt, <rhyme label="e" type="m">drinckt</rhyme></l>
        <l id="s8:l9" met="3" type="-+">'t Ghelasen Trompet dat <rhyme label="e" type="m" corresp="#s8:l8">klinckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Die den Wyn-pot heeft <rhyme label="a" type="f">verwonnen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Die noch gaen en kan oft <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Sal als Bachus op een <rhyme label="a" type="f" corresp="#s9:l1">Tonne</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Met triumph' naer huys toe <rhyme label="b" type="m" corresp="#s9:l2">gaẽ</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Als 't al sal ghestreden <rhyme label="c" type="m">zyn</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Sal in het bedde den vrede <rhyme label="c" type="m" corresp="#s9:l5">zyn</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Vecht knecht, doot kees en <rhyme label="d" type="m">Broot</rhyme>,</l>
        <l id="s9:l8" met="1" type="-+">Schinckt, <rhyme label="e" type="m">drinckt</rhyme></l>
        <l id="s9:l9" met="3" type="-+">'t Ghelasen Trompet dat <rhyme label="e" type="m" corresp="#s9:l8">klinckt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
