  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">SEer heeft Franciscus Borgia <rhyme label="a" type="f">ghebloncken</rhyme></l>
        <l id="s1:l2" met="4" type="+-">In volcomen <rhyme label="b" type="m">heylicheydt</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">In een soo diepe nedricheydt <rhyme label="a" type="f" corresp="#s1:l1">ghesoncken</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Die Godts gratie ons <rhyme label="b" type="m" corresp="#s1:l2">bereydt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Eer sy en lof den Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s1:l6" met="6" type="-+">Borgian die seer heeft verciert met alle <rhyme label="d" type="m">deught</rhyme>,</l>
        <l id="s1:l7" met="7" type="+-">Dus wy hem oock eeren, sijnen lof te gaer <rhyme label="c" type="f" corresp="#s1:l5">vermeeren</rhyme>,</l>
        <l id="s1:l8" met="7" type="+-">En met helle stemmen singen met ghemeyne <rhyme label="d" type="m" corresp="#s1:l6">vreught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Hem heeft de Croon van Gandien doen <rhyme label="a" type="f">laten</rhyme></l>
        <l id="s2:l2" met="4" type="+-">t'Lichaem van de <rhyme label="b" type="m">Keyserin</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Rot en mismaeckt dat hy sach boven <rhyme label="a" type="f" corresp="#s2:l1">maten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hem de Iesus huys gaen <rhyme label="b" type="m" corresp="#s2:l2">in</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Eer sy en lof den Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s2:l6" met="6" type="-+">Borgian die seer heeft verciert met alle <rhyme label="d" type="m">deught</rhyme>,</l>
        <l id="s2:l7" met="7" type="+-">Dus wy hem oock eeren, sijnen lof te gaer <rhyme label="c" type="f" corresp="#s2:l5">vermeeren</rhyme>,</l>
        <l id="s2:l8" met="7" type="+-">En met helle stemmen singen met ghemeyne <rhyme label="d" type="m" corresp="#s2:l6">vreught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">In de Religie heeft hy als den <rhyme label="a" type="f">minsten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Sich ghedraghen <rhyme label="b" type="m">t'alletijdt</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">En daer betracht de alderslechste <rhyme label="a" type="f" corresp="#s3:l1">diensten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Daer me al te seer <rhyme label="b" type="m" corresp="#s3:l2">verblijdt</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Eer sy en lof den Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s3:l6" met="6" type="-+">Borgian die seer heeft verciert met alle <rhyme label="d" type="m">deught</rhyme>,</l>
        <l id="s3:l7" met="7" type="+-">Dus wy hem oock eeren, sijnen lof te gaer <rhyme label="c" type="f" corresp="#s3:l5">vermeeren</rhyme>,</l>
        <l id="s3:l8" met="7" type="+-">En met helle stemmen singen met ghemeyne <rhyme label="d" type="m" corresp="#s3:l6">vreught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Tweemaels ghebicht heeft hy sich alle <rhyme label="a" type="f">daghen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Sijn conscientie <rhyme label="b" type="m">ondersocht</rhyme></l>
        <l id="s4:l3" met="5" type="-+">Oock allen uer, op dat hy sou <rhyme label="a" type="f" corresp="#s4:l1">behaghen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Godt soo seer als hy <rhyme label="b" type="m" corresp="#s4:l2">vermocht</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Eer sy en lof den Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s4:l6" met="6" type="-+">Borgian die seer heeft verciert met alle <rhyme label="d" type="m">deught</rhyme>,</l>
        <l id="s4:l7" met="7" type="+-">Dus wy hem oock eeren, sijnen lof te gaer <rhyme label="c" type="f" corresp="#s4:l5">vermeeren</rhyme>,</l>
        <l id="s4:l8" met="7" type="+-">En met helle stemmen singen met ghemeyne <rhyme label="d" type="m" corresp="#s4:l6">vreught</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Seer stack hy uyt in alderhande <rhyme label="a" type="f">deughden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Op ghetoghen in't <rhyme label="b" type="m">ghebedt</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Stadich vervult met Goddelijcke <rhyme label="a" type="f" corresp="#s5:l1">vreughden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Vast in Godt altijdt <rhyme label="b" type="m" corresp="#s5:l2">gheset</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Eer sy en lof den Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s5:l6" met="6" type="-+">Borgian die seer heeft verciert met alle <rhyme label="d" type="m">deught</rhyme>,</l>
        <l id="s5:l7" met="7" type="+-">Dus wy hem oock eeren, sijnen lof te gaer <rhyme label="c" type="f" corresp="#s5:l5">vermeeren</rhyme>,</l>
        <l id="s5:l8" met="7" type="+-">En met helle stemmen singen met ghemeyne <rhyme label="d" type="m" corresp="#s5:l6">vreught</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Groot is gheweest den iever tot de <rhyme label="a" type="f">zielen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">In sijn hert die heeft <rhyme label="b" type="m">ghebrant</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">t'Leven die door sijn neersticheydt <rhyme label="a" type="f" corresp="#s6:l1">behielen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Oft bequaemen t' alle <rhyme label="b" type="m" corresp="#s6:l2">kant</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Eer sy en lof den Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s6:l6" met="6" type="-+">Borgian die seer heeft verciert met alle <rhyme label="d" type="m">deught</rhyme>,</l>
        <l id="s6:l7" met="7" type="+-">Dus wy hem oock eeren, sijnen lof te gaer <rhyme label="c" type="f" corresp="#s6:l5">vermeeren</rhyme>,</l>
        <l id="s6:l8" met="7" type="+-">En met helle stemmen singen met ghemeyne <rhyme label="d" type="m" corresp="#s6:l6">vreught</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Tot t' Generaelschap eyndelijck <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Heeft hy weerdich dat <rhyme label="b" type="m">bedient</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">Om sijn ootmoedich stichtelijckste <rhyme label="a" type="f" corresp="#s7:l1">leven</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Om sijn wijsheydt seer <rhyme label="b" type="m" corresp="#s7:l2">bemint</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Eer sy en lof den Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s7:l6" met="6" type="-+">Borgian die seer heeft verciert met alle <rhyme label="d" type="m">deught</rhyme>,</l>
        <l id="s7:l7" met="7" type="+-">Dus wy hem oock eeren, sijnen lof te gaer <rhyme label="c" type="f" corresp="#s7:l5">vermeeren</rhyme>,</l>
        <l id="s7:l8" met="7" type="+-">En met helle stemmen singen met ghemeyne <rhyme label="d" type="m" corresp="#s7:l6">vreught</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Rijck van verdiensten sit hy nu daer <rhyme label="a" type="f">boven</rhyme></l>
        <l id="s8:l2" met="4" type="+-">In een al te groot <rhyme label="b" type="m">jolijt</rhyme>,</l>
        <l id="s8:l3" met="5" type="-+">Daer Godt met hem Seraphinen <rhyme label="a" type="f" corresp="#s8:l1">loven</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">In sijn glorie seer <rhyme label="b" type="m" corresp="#s8:l2">verblijt</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Eer sy en lof den Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s8:l6" met="6" type="-+">Borgian die seer heeft verciert met alle <rhyme label="d" type="m">deught</rhyme>,</l>
        <l id="s8:l7" met="7" type="+-">Dus wy hem oock eeren, sijnen lof te gaer <rhyme label="c" type="f" corresp="#s8:l5">vermeeren</rhyme>,</l>
        <l id="s8:l8" met="7" type="+-">En met helle stemmen singen met ghemeyne <rhyme label="d" type="m" corresp="#s8:l6">vreught</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="-+">Doet ons, Francisce, doet door uwe <rhyme label="a" type="f">ghebeden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Nae het eeuwigh leven <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s9:l3" met="5" type="-+">En met den voet de aertsche goeden <rhyme label="a" type="f" corresp="#s9:l1">treden</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Die soo licht en snel <rhyme label="b" type="m" corresp="#s9:l2">vergaen</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Eer sy en lof den Heer der <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s9:l6" met="6" type="-+">Borgian die seer heeft verciert met alle <rhyme label="d" type="m">deught</rhyme>,</l>
        <l id="s9:l7" met="7" type="+-">Dus wy hem oock eeren, sijnen lof te gaer <rhyme label="c" type="f" corresp="#s9:l5">vermeeren</rhyme>,</l>
        <l id="s9:l8" met="7" type="+-">En met helle stemmen singen met ghemeyne <rhyme label="d" type="m" corresp="#s9:l6">vreught</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
