    <categories>
      <category translation="love and sex">liefde en seks</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe langh, wreede <rhyme label="a" type="m">Roselt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Sal ick werden <rhyme label="a" type="m" corresp="#s1:l1">gequelt</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">En door u straffe stuursheyt sijn <rhyme label="b" type="m">geplaegt</rhyme>?</l>
        <l id="s1:l4" met="2" type="-+">Of schoon ghy <rhyme label="c" type="m">siet</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Mijn swaer <rhyme label="c" type="m" corresp="#s1:l4">verdriet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Noch ghy vermakingh daer in <rhyme label="b" type="m" corresp="#s1:l3">draeght</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Luchtige <rhyme label="a" type="m">Velt-Goddin</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Verandert vry van <rhyme label="a" type="m" corresp="#s2:l1">sin</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Daer 's niet dat uwe schoonheyt meer <rhyme label="b" type="m">mis-staet</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">V raeden <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Door dien 't u <rhyme label="c" type="m" corresp="#s2:l4">schaet</rhyme>;</l>
        <l id="s2:l6" met="4" type="-+">Wreetheyt u schoonheyt te boven <rhyme label="b" type="m" corresp="#s2:l3">gaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">'t Gratieuse wesen <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ghy hier door af breuck <rhyme label="a" type="m" corresp="#s3:l1">doet</rhyme>:</l>
        <l id="s3:l3" met="5" type="-+">Maer 't glinstrigh licht uws ooghjes <rhyme label="b" type="m">swart</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Doch flickren <rhyme label="c" type="m">laet</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Mijn <rhyme label="c" type="m" corresp="#s3:l4">dageraet</rhyme>!</l>
        <l id="s3:l6" met="4" type="-+">Laet doch u Hardertje niet in <rhyme label="b" type="m" corresp="#s3:l3">smart</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Want na dees bittre <rhyme label="a" type="m">noot</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Volght wisselick de <rhyme label="a" type="m" corresp="#s4:l1">doot</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">'t Welck uwe strafheyt my, Schoonst', aen <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Het welck mijn <rhyme label="c" type="m">Son</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Licht helpen <rhyme label="c" type="m" corresp="#s4:l4">kon</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Als liefd en weerliefd malkander <rhyme label="b" type="m" corresp="#s4:l3">moet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gedenckt, steenhartige <rhyme label="a" type="m">Vrouw</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hoe ghy u Tyter <rhyme label="a" type="m" corresp="#s5:l1">trouw</rhyme></l>
        <l id="s5:l3" met="5" type="-+">Verlaet, die u verlaten noyt en <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Maer 't geen u <rhyme label="c" type="m">smaeckt</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Hem 't harte <rhyme label="c" type="m" corresp="#s5:l4">raeckt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Wat u lust, neem ick oock hart'lick <rhyme label="b" type="m" corresp="#s5:l3">an</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doch dees wensch, stuurse <rhyme label="a" type="m">vrouw</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ick wel begeeren <rhyme label="a" type="m" corresp="#s6:l1">sou</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">Dat op mijn graf dit op-schrift mochte <rhyme label="b" type="m">staen</rhyme>:</l>
        <l id="s6:l4" met="2" type="-+">Die, die hier <rhyme label="c" type="m">leyt</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Will'gh was <rhyme label="c" type="m" corresp="#s6:l4">bereyt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Om Mins wreetheyt de doot te nemen <rhyme label="b" type="m" corresp="#s6:l3">aen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
