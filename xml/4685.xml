    <tags/>
    <melody>Kom af tot mij godin</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">‘TIs kenlijk groot en <rhyme label="a" type="m">klein</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat all’ end’ <rhyme label="b" type="f">igelijke</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die yet wes van ’t <rhyme label="a" type="m" corresp="#s1:l1">gemeyn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Bedienen wil, doen <rhyme label="b" type="f" corresp="#s1:l2">blijken</rhyme></l>
        <l id="s1:l5" met="3" type="-+">By brieven <rhyme label="b" type="f" corresp="#s1:l2">autentijke</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Voor al, moet van de <rhyme label="c" type="m">last</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die hem is <rhyme label="c" type="m" corresp="#s1:l6">toegepast</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Men ziet de prouf hier <rhyme label="a" type="m">van</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In alle <rhyme label="b" type="f">Magistraten</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Iae daer en kan noyt <rhyme label="a" type="m" corresp="#s2:l1">man</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Verdienen geld met <rhyme label="b" type="f" corresp="#s2:l2">praten</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Of hy moet lezen <rhyme label="b" type="f" corresp="#s2:l2">laten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Al eer hy praet, of <rhyme label="c" type="m">pleyt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Zijn schriftelijk <rhyme label="c" type="m" corresp="#s2:l6">bescheyd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dit zietmen ook <rhyme label="a" type="m">aldus</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De Boden <rhyme label="b" type="f">practiseren</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Die daerom met een <rhyme label="a" type="m" corresp="#s3:l1">Bus</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Van haer bevel <rhyme label="b" type="f" corresp="#s3:l2">doceren</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Zoo zeer dat niemand ’s <rhyme label="b" type="f" corresp="#s3:l2">Heren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Placcaten dragen <rhyme label="c" type="m">dorst</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Of hy hadz’ op de <rhyme label="c" type="m" corresp="#s3:l6">borst</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De borst, want dits de <rhyme label="a" type="m">plaets</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Daer alle luyden <rhyme label="b" type="f">zagen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">De boden of haer <rhyme label="a" type="m" corresp="#s4:l1">maets</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Tot noch toe, bussen <rhyme label="b" type="f" corresp="#s4:l2">dragen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Noch ik en zag mijn <rhyme label="b" type="f" corresp="#s4:l2">dagen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Noyt Bod’, diez’ anders <rhyme label="c" type="m">droug</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Als eenen, die ‘k <rhyme label="c" type="m" corresp="#s4:l6">beloug</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Vraegt ghy my re’en, <rhyme label="a" type="m">waerom</rhyme>?</l>
        <l id="s5:l2" met="3" type="-+">Om dat ik hem zag <rhyme label="b" type="f">voeren</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Driemael de <rhyme label="a" type="m" corresp="#s5:l1">Lelyblom</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van acht’ren op zijn <rhyme label="b" type="f" corresp="#s5:l2">schoeren</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Ach fijn Man! keerd de <rhyme label="b" type="f" corresp="#s5:l2">snoeren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Zeyd ik, en hangt de <rhyme label="c" type="m">Bus</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Van voren, aen een <rhyme label="c" type="m" corresp="#s5:l6">Lus</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De wereld is te <rhyme label="a" type="m">snood</rhyme>’.</l>
        <l id="s6:l2" met="3" type="-+">Zy zal u straks doen <rhyme label="b" type="f">nommen</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">De averekse <rhyme label="a" type="m" corresp="#s6:l1">Bood</rhyme>’</l>
        <l id="s6:l4" met="3" type="-+">Van d’avereckse <rhyme label="b" type="f" corresp="#s6:l2">blommen</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Maer wat? als ik wou <rhyme label="b" type="f" corresp="#s6:l2">kommen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Hier in den man te <rhyme label="c" type="m">baet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Vond’ ik mijn t’eynde <rhyme label="c" type="m" corresp="#s6:l6">raed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De Bus hiel al te <rhyme label="a" type="m">vast</rhyme>;</l>
        <l id="s7:l2" met="3" type="-+">De Leeljen bleven <rhyme label="b" type="f">stugge</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Iae door des Konings <rhyme label="a" type="m" corresp="#s7:l1">last</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Geteykend op zijn <rhyme label="b" type="f" corresp="#s7:l2">rugge</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Och vrind! noch vlieg, noch <rhyme label="b" type="f" corresp="#s7:l2">mugge</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Sprak ik, met goed <rhyme label="c" type="m">bemerk</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En beet u oyt zoo <rhyme label="c" type="m" corresp="#s7:l6">sterk</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">En reyst dan nu niet <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Door straten of door <rhyme label="b" type="f">wegen</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Maer neen, hy was te <rhyme label="a" type="m" corresp="#s8:l1">zeer</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Tot brief en port <rhyme label="b" type="f" corresp="#s8:l2">genegen</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Des hy den naem <rhyme label="b" type="f" corresp="#s8:l2">gekregen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Noch heeft (al hoorment <rhyme label="c" type="m">nood</rhyme>’)</l>
        <l id="s8:l7" met="3" type="-+">Van d’averekse <rhyme label="c" type="m" corresp="#s8:l6">Bood</rhyme>’.</l>
      </lg>
    </lg>
  </text>
</song>
