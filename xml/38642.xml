  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">D'herderinne <rhyme label="a" type="f">Celimene</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Songh in't bosch een treurich <rhyme label="b" type="m">liedt</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Waer is nu mijn son <rhyme label="a" type="f" corresp="#s1:l1">verdwenen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Mijnen troost in het <rhyme label="b" type="m" corresp="#s1:l2">verdriet</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Waer vliet ghy Leander <rhyme label="a" type="f" corresp="#s1:l1">henen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Datmen u niet eens en <rhyme label="b" type="m" corresp="#s1:l2">siet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ach Cupido uwe <rhyme label="a" type="f">plaghen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Vallen my soo stuer en <rhyme label="b" type="m">straf</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Wie kan'tliefdens vier <rhyme label="a" type="f" corresp="#s2:l1">verdraghen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Dat u teert de krachten <rhyme label="b" type="m" corresp="#s2:l2">af</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Siet uw' wreetheyt sal my <rhyme label="a" type="f" corresp="#s2:l1">jaghen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Voor den tijdt in't duyster <rhyme label="b" type="m" corresp="#s2:l2">graf</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'Kwas te voren soo vol <rhyme label="a" type="f">welden</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Als ick een teer meysken <rhyme label="b" type="m">was</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Toen ick dickwils in de <rhyme label="a" type="f" corresp="#s3:l1">velden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Voor Leander bloemen <rhyme label="b" type="m" corresp="#s3:l2">las</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Maer elaes nu lach ick <rhyme label="a" type="f" corresp="#s3:l1">selden</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Want mijn jeucht versmelt als <rhyme label="b" type="m" corresp="#s3:l2">wasch</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wie sal in my schoonheyt <rhyme label="a" type="f">wijsen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Daer gheen roosen-root en <rhyme label="b" type="m">staet</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Siet mijn gout-geel hairen <rhyme label="a" type="f" corresp="#s4:l1">rijsen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">En mijn Muse-stem <rhyme label="b" type="m" corresp="#s4:l2">vergaet</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Wie sal Celimene <rhyme label="a" type="f" corresp="#s4:l1">prijsen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Die nu Floras dans <rhyme label="b" type="m" corresp="#s4:l2">verlaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Nu dool ick in eensaem <rhyme label="a" type="f">weghen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Daer den Eccho mijn <rhyme label="b" type="m">ghesucht</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Spreeckt met droeve thoonen <rhyme label="a" type="f" corresp="#s5:l1">teghen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Door den gallem van de <rhyme label="b" type="m" corresp="#s5:l2">lucht</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Had ick noyt soo langh <rhyme label="a" type="f" corresp="#s5:l1">ghesweghen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Nu ist al te laet <rhyme label="b" type="m" corresp="#s5:l2">beducht</rhyme>.</l>
      </lg>
    </lg>
  </text>
