    <melody>Och ik mag wel droevig schreien</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Liefsten Godt hoe menich <rhyme label="a" type="f">reysen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Heb ick hier met mijn <rhyme label="a" type="f" corresp="#s1:l1">ghepeysen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Seer swaer moedelick <rhyme label="b" type="m">versucht</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Om dat ghy hier waert <rhyme label="b" type="m" corresp="#s1:l3">ghevlucht</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">En hoe menich dach en <rhyme label="c" type="f">nachten</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Heb ick u al om staen <rhyme label="c" type="f" corresp="#s1:l5">wachten</rhyme></l>
        <l id="s1:l7" met="4" type="+-">En ghevraeght seer <rhyme label="d" type="m">onvervaert</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Aen u waekers waer ghy <rhyme label="d" type="m" corresp="#s1:l7">waert</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wat ick vraeghde van <rhyme label="a" type="f">hunlieden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Sy en gaeven gheen <rhyme label="a" type="f" corresp="#s2:l1">bedieden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Aen my, waert ghy waert <rhyme label="b" type="m">ghegaen</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Maer sy lieten my soo <rhyme label="b" type="m" corresp="#s2:l3">staen</rhyme>-</l>
        <l id="s2:l5" met="4" type="+-">K'reegh hier in ghelijck <rhyme label="c" type="f">vernoeyen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">t'Scheen d'ack gingh' ghelaen met <rhyme label="c" type="f" corresp="#s2:l5">boeyen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">K'voeghde my aen eenen <rhyme label="d" type="m">cant</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Daer ick my alleene <rhyme label="d" type="m" corresp="#s2:l7">vant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">K'docht ick sal alleen gaen <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">En gheen schepsels meer <rhyme label="a" type="f" corresp="#s3:l1">aencleven</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Of ick u by <rhyme label="b" type="m">avontuer</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Beter vonde t'eender <rhyme label="b" type="m" corresp="#s3:l3">ur'</rhyme></l>
        <l id="s3:l5" met="4" type="+-">K'docht oft ghy u hadt <rhyme label="c" type="f">ghedoken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Om dat ick had' <rhyme label="c" type="f" corresp="#s3:l5">aenghesproken</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En bemint de schepsels <rhyme label="d" type="m">meer</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Dan dat toe laet uwe <rhyme label="d" type="m" corresp="#s3:l7">eer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">D'eenigheyt nu in <rhyme label="a" type="f">ghetreden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Als ick stondt in mijn <rhyme label="a" type="f" corresp="#s4:l1">ghebeden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Met mijn hert tot u heel <rhyme label="b" type="m">bloot</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Quaemt ghy my in mijnen <rhyme label="b" type="m" corresp="#s4:l3">schoot</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Soo dat ick u met <rhyme label="c" type="f">verlanghen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">In mijn arems u moet <rhyme label="c" type="f" corresp="#s4:l5">pranghen</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Aenghesien dat ghy soo <rhyme label="d" type="m">vry</rhyme></l>
        <l id="s4:l8" met="4" type="+-">V presenti' doet aen <rhyme label="d" type="m" corresp="#s4:l7">my</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wie sal my van u nu <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Wie sal my naer t'neder <rhyme label="a" type="f" corresp="#s5:l1">leyden</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Als het hert van u en <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Dusdaenigh vereenicht <rhyme label="b" type="m" corresp="#s5:l3">syn</rhyme>?</l>
        <l id="s5:l5" met="4" type="+-">Geen vyandt so <rhyme label="c" type="f">gheslaeghen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Die my hier van u sal <rhyme label="c" type="f" corresp="#s5:l5">jaeghen</rhyme></l>
        <l id="s5:l7" met="4" type="+-">K'ben als nu genoech <rhyme label="d" type="m">versterckt</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Nu u liefd' in my so <rhyme label="d" type="m" corresp="#s5:l7">werckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Lof o alderliefst' <rhyme label="a" type="f">beminden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Nu ghy hebt u laeten <rhyme label="a" type="f" corresp="#s6:l1">vinden</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Nu ons liefd' ons t'saemen <rhyme label="b" type="m">vlecht</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Mach ick nu wel segghen <rhyme label="b" type="m" corresp="#s6:l3">recht</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Dat ick ben ter deser <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Van t'verganckelick <rhyme label="c" type="f" corresp="#s6:l5">ontbonden</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">En gheheel by u <rhyme label="d" type="m">ghevoeght</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Met ghenoeght  boven <rhyme label="d" type="m" corresp="#s6:l7">ghenoecht</rhyme>.</l>
      </lg>
    </lg>
  </text>
