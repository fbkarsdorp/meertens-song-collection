  <author>Jan van Hoogstraten</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Dat ons uwe <rhyme label="a" type="f">liefde</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Het hart eens <rhyme label="a" type="f" corresp="#s1:l1">doorgriefde</rhyme>,</l>
        <l id="s1:l3" met="1" type="-+">Wy voelden <rhyme label="b" type="f">'t</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Wy voelden 't van <rhyme label="c" type="f">binnen</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Schenk Heer ons dien <rhyme label="d" type="f">zege</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Op dat ze ons <rhyme label="d" type="f" corresp="#s1:l5">bewege</rhyme></l>
        <l id="s1:l7" met="1" type="-+">Alleen <rhyme label="e" type="m">u</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Alleen u te <rhyme label="c" type="f" corresp="#s1:l4">minnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Het vlees steeds <rhyme label="a" type="f">genegen</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Hier wellust te <rhyme label="a" type="f" corresp="#s2:l1">plegen</rhyme></l>
        <l id="s2:l3" met="1" type="-+">Zal 't <rhyme label="b" type="f">schoonste</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Zal 't schoonste <rhyme label="c" type="f">verkiezen</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">Met hoe veel meer <rhyme label="d" type="f">reden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Is 't schoonste <rhyme label="d" type="f" corresp="#s2:l5">aangebeden</rhyme></l>
        <l id="s2:l7" met="1" type="-+">Dat niets <rhyme label="e" type="m">kan</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Dat niets kan <rhyme label="c" type="f" corresp="#s2:l4">verliezen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Wat oogen of <rhyme label="a" type="f">ooren</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Op aard mag <rhyme label="a" type="f" corresp="#s3:l1">bekooren</rhyme></l>
        <l id="s3:l3" met="1" type="-+">Of <rhyme label="b" type="f">streelen</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Of streelen de <rhyme label="c" type="f">zinnen</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">'T is van u <rhyme label="d" type="f">afhanklijk</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En broos, en <rhyme label="d" type="f" corresp="#s3:l5">verganklijk</rhyme>,</l>
        <l id="s3:l7" met="1" type="-+">
          <rhyme label="e" type="m">Onwaardig</rhyme>
        </l>
        <l id="s3:l8" met="2" type="-+">Onwaardig te <rhyme label="c" type="f" corresp="#s3:l4">minnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Maar gy, uit wiens <rhyme label="a" type="f">wezen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Al 't schoon is <rhyme label="a" type="f" corresp="#s4:l1">gerezen</rhyme></l>
        <l id="s4:l3" met="1" type="-+">Van <rhyme label="b" type="f">Hemel</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Van Hemel, en <rhyme label="c" type="f">aarde</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">Ã´ Schoonheit hier <rhyme label="d" type="f">boven</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Alleen waard te <rhyme label="d" type="f" corresp="#s4:l5">loven</rhyme></l>
        <l id="s4:l7" met="1" type="-+">Het aards <rhyme label="e" type="m">heeft</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Het aards heeft geen <rhyme label="c" type="f" corresp="#s4:l4">waarde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Blaak gy onze <rhyme label="a" type="f">harten</rhyme></l>
        <l id="s5:l2" met="3" type="+-">En heel onze <rhyme label="a" type="f" corresp="#s5:l1">smarten</rhyme></l>
        <l id="s5:l3" met="1" type="-+">Die om <rhyme label="b" type="f">u</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Die om u hier <rhyme label="c" type="f">zugten</rhyme></l>
        <l id="s5:l5" met="3" type="+-">En neyg onze <rhyme label="d" type="f">zinnen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Alleen u te <rhyme label="d" type="f" corresp="#s5:l5">minnen</rhyme>,</l>
        <l id="s5:l7" met="1" type="-+">Door 't <rhyme label="e" type="m">aardse</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Door 't aardse te <rhyme label="c" type="f" corresp="#s5:l4">ontvlugten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
