  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">KOst den Hemel ons <rhyme label="a" type="f">benyden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dit sou wesen om het <rhyme label="a" type="f" corresp="#s1:l1">lyden</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Dat men boven niet en <rhyme label="b" type="m">vindt</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Dit syn kruyden van ons <rhyme label="c" type="f">erven</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Die den saeligen moet <rhyme label="c" type="f" corresp="#s1:l4">derven</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Schoon hy die soo seer <rhyme label="b" type="m" corresp="#s1:l3">bemint</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">O t'en sou hem niet <rhyme label="a" type="f">verdrieten</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Ons ellenden te <rhyme label="a" type="f" corresp="#s2:l1">genieten</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Daer wy weygerigh van <rhyme label="b" type="m">syn</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Ons misnoegen sou hem <rhyme label="c" type="f">smaeken</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Ongenucht sou hem <rhyme label="c" type="f" corresp="#s2:l4">vermaeken</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Al syn haeken waer naer <rhyme label="b" type="m" corresp="#s2:l3">pyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hadden Menschen Engels <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Lyden sou sich anders <rhyme label="a" type="f" corresp="#s3:l1">toogen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Als het nu genomen <rhyme label="b" type="m">wordt</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Qualyck sien maeckt een quaedt <rhyme label="c" type="f">oordeel</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Hier van hebben d'Engels <rhyme label="c" type="f" corresp="#s3:l4">voordeel</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Daer den mensch blyft in te <rhyme label="b" type="m" corresp="#s3:l3">kort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Menschen spreken naer <rhyme label="a" type="f">gesintheyt</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Meynen midden in hun <rhyme label="a" type="f" corresp="#s4:l1">blintheyt</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Dat aen t'sien niet en <rhyme label="b" type="m">ontbreckt</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Want sy letten op <rhyme label="c" type="f">t'uytwendigh</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En bedriegen hun <rhyme label="c" type="f" corresp="#s4:l4">ellendigh</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Als de waerheyt wordt <rhyme label="b" type="m" corresp="#s4:l3">ontdeckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">t'Minerael van goude <rhyme label="a" type="f">mynen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Sal dit selfs aen hun niet <rhyme label="a" type="f" corresp="#s5:l1">schynen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Eenen rouwen aerden <rhyme label="b" type="m">klont</rhyme>?</l>
        <l id="s5:l4" met="4" type="+-">Hoort den gout-smit hier van <rhyme label="c" type="f">spreken</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Als hy dit wel <rhyme label="c" type="f" corresp="#s5:l4">wegh-gesteken</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Wenscht, dat hy t'noch meerder <rhyme label="b" type="m" corresp="#s5:l3">vont</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hy die siet dees aerd' van <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Weet, wat hier is aen te <rhyme label="a" type="f" corresp="#s6:l1">winnen</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Als het door het vier sal <rhyme label="b" type="m">gaen</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">Uyt dees aerde sal hy <rhyme label="c" type="f">haelen</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Kostelycke goude <rhyme label="c" type="f" corresp="#s6:l4">schaelen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Die voor Princen mogen <rhyme label="b" type="m" corresp="#s6:l3">staen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Laet Theresia eens <rhyme label="a" type="f">kiesen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">t'Leven, of die pyn <rhyme label="a" type="f" corresp="#s7:l1">verliesen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Sonder lyden liever <rhyme label="b" type="m">doodt</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Gy Xavier, die in den <rhyme label="c" type="f">oosten</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Geen vermaeck en kan <rhyme label="c" type="f" corresp="#s7:l4">vertroosten</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Al uw' weelden syn in <rhyme label="b" type="m" corresp="#s7:l3">noodt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Buyten bystant van de <rhyme label="a" type="f">menschen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Daer een ieder sou naer <rhyme label="a" type="f" corresp="#s8:l1">wenschen</rhyme></l>
        <l id="s8:l3" met="4" type="+-">t'Lyden was al Jesus <rhyme label="b" type="m">troost</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Daerom weenen, kermen, <rhyme label="c" type="f">suchten</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Voor die t'kennen syn <rhyme label="c" type="f" corresp="#s8:l4">genuchten</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">t'Lyden is oprecht den <rhyme label="b" type="m" corresp="#s8:l3">oost</rhyme>.</l>
      </lg>
    </lg>
  </text>
