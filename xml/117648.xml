  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Een Jonkman die 't <rhyme label="a" type="f">Minnen</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Eerst komt te <rhyme label="a" type="f" corresp="#s1:l1">beginnen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe kweld, hoe kweld hy zyn <rhyme label="a" type="f" corresp="#s1:l1">zinnen</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">By Dagen en <rhyme label="b" type="f">Nagten</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Zoekt hy maar te <rhyme label="b" type="f" corresp="#s1:l4">tragten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Na Minne, Na Minne <rhyme label="b" type="f" corresp="#s1:l4">gedagten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Wat doet hy al <rhyme label="a" type="f">zugten</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Zyn Hertjen <rhyme label="a" type="f" corresp="#s2:l1">ontvlugten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Men agt het, men agt het maar <rhyme label="a" type="f" corresp="#s2:l1">klugten</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Hy doet hele <rhyme label="b" type="f">Dagen</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Niet anders als <rhyme label="b" type="f" corresp="#s2:l4">klagen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hy moet het, Hy moet het <rhyme label="b" type="f" corresp="#s2:l4">verdragen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Hy zoekt, door <rhyme label="a" type="f">Gedigten</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Van 't Minnen, te <rhyme label="a" type="f" corresp="#s3:l1">stigten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Zyn Hertje, zyn Hertje te <rhyme label="a" type="f" corresp="#s3:l1">ligten</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Indien hy een <rhyme label="b" type="f">Briefjen</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Beschikt aan zyn <rhyme label="b" type="f" corresp="#s3:l4">Liefjen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Het schynd een, Het schynd een <rhyme label="b" type="f" corresp="#s3:l4">geriefjen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">En heeft zy 't <rhyme label="a" type="f">ontfangen</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Hy sterft van <rhyme label="a" type="f" corresp="#s4:l1">Verlangen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hoe 't al is, hoe 't al is <rhyme label="a" type="f" corresp="#s4:l1">vergangen</rhyme>.</l>
        <l id="s4:l4" met="2" type="-+">En Schryft zy dan <rhyme label="b" type="f">weder</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Dat zet hem ter <rhyme label="b" type="f" corresp="#s4:l4">neder</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dus word hy, Dus word hy <rhyme label="b" type="f" corresp="#s4:l4">gereder</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Hy wil <rhyme label="a" type="f">ondertussen</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">De Letteren <rhyme label="a" type="f" corresp="#s5:l1">kussen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat kan hem, dat kan hem niet <rhyme label="a" type="f" corresp="#s5:l1">blussen</rhyme>;</l>
        <l id="s5:l4" met="2" type="-+">Hy dunkt of zyn <rhyme label="b" type="f">Woorden</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Haar beter <rhyme label="b" type="f" corresp="#s5:l4">bekoorden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hy wenst dat, Hy wenst dat z'hem <rhyme label="b" type="f" corresp="#s5:l4">hoorden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">En komt dan den <rhyme label="a" type="f">stryer</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Na wenssen eens <rhyme label="a" type="f" corresp="#s6:l1">byer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Hy noemt zig, Hy noemt zig haar <rhyme label="a" type="f" corresp="#s6:l1">Vryer</rhyme>:</l>
        <l id="s6:l4" met="2" type="-+">Hy wenst haar zyn <rhyme label="b" type="f">Leven</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Uyt Liefde te <rhyme label="b" type="f" corresp="#s6:l4">geven</rhyme>;</l>
        <l id="s6:l6" met="3" type="-+">Zyn Hertje, zyn Herte daar <rhyme label="b" type="f" corresp="#s6:l4">neven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Na Jaren te <rhyme label="a" type="f">lopen</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Begind hy te <rhyme label="a" type="f" corresp="#s7:l1">hopen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Om 't Bantjen, Om 't Bantjen te <rhyme label="a" type="f" corresp="#s7:l1">knopen</rhyme>:</l>
        <l id="s7:l4" met="2" type="-+">Dan wil hy van <rhyme label="b" type="f">Paren</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Zyn hert <rhyme label="b" type="f" corresp="#s7:l4">openbaren</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Hy zal 't haar, Hy zal 't haar <rhyme label="b" type="f" corresp="#s7:l4">verklaren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Hy zoekt onder <rhyme label="a" type="f">Deken</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Nog meerder te <rhyme label="a" type="f" corresp="#s8:l1">spreken</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ligt word het, Ligt word het <rhyme label="a" type="f" corresp="#s8:l1">bekeken</rhyme>:</l>
        <l id="s8:l4" met="2" type="-+">Hy doet daar het <rhyme label="b" type="f">Diertje</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Een vrolyk <rhyme label="b" type="f" corresp="#s8:l4">Plyziertje</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En blust zo, En blust zo zyn <rhyme label="b" type="f" corresp="#s8:l4">Viertje</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Men geeft zig tot <rhyme label="a" type="f">Trouwen</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">En moet malkaar <rhyme label="a" type="f" corresp="#s9:l1">houwen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Al zou het, al zou het ook <rhyme label="a" type="f" corresp="#s9:l1">rouwen</rhyme>:</l>
        <l id="s9:l4" met="2" type="-+">Dan zoekt zy na 't <rhyme label="b" type="f">Trouwtje</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Zo menigen <rhyme label="b" type="f" corresp="#s9:l4">douwtje</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Zy is nu, Zy is nu het <rhyme label="b" type="f" corresp="#s9:l4">Vrouwtje</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Dan wil zy <rhyme label="a" type="f">regeren</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">Den Bloed <rhyme label="a" type="f" corresp="#s10:l1">commanderen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Wie kan haar, wie kan haar dat <rhyme label="a" type="f" corresp="#s10:l1">keren</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Hy is wel te <rhyme label="b" type="f">vreden</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Mag hy aan haar <rhyme label="b" type="f" corresp="#s10:l4">Leden</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Zyn Deuvik, Zyn Deuvik <rhyme label="b" type="f" corresp="#s10:l4">besteden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Wil hy dan niet <rhyme label="a" type="f">Nayen</rhyme>,</l>
        <l id="s11:l2" met="2" type="-+">Om 't Diertje te <rhyme label="a" type="f" corresp="#s11:l1">payen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Zy zal hem, Zy zal hem <rhyme label="a" type="f" corresp="#s11:l1">ondrayen</rhyme>;</l>
        <l id="s11:l4" met="2" type="-+">Zy zoekt tot haar <rhyme label="b" type="f">lusten</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Een ander die 't <rhyme label="b" type="f" corresp="#s11:l4">blusten</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Eer zal zy, Eer zal zy niet <rhyme label="b" type="f" corresp="#s11:l4">rusten</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Dus word hy wat <rhyme label="a" type="f">trager</rhyme>,</l>
        <l id="s12:l2" met="2" type="-+">Zoo krygt hy een <rhyme label="a" type="f" corresp="#s12:l1">Zwager</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Die toond zig, Die toond zig wat <rhyme label="a" type="f" corresp="#s12:l1">grager</rhyme>:</l>
        <l id="s12:l4" met="2" type="-+">Die leend zy haar <rhyme label="b" type="f">Buykje</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">En hy haar zyn <rhyme label="b" type="f" corresp="#s12:l4">Struykje</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Dus zyn zy, Dus zyn zy in 't <rhyme label="b" type="f" corresp="#s12:l4">Fuykje</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="2" type="-+">Dit lustige <rhyme label="a" type="f">Paartje</rhyme>,</l>
        <l id="s13:l2" met="2" type="-+">Maakt levende <rhyme label="a" type="f" corresp="#s13:l1">Waartje</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Haar Man die, Haar Man die heet <rhyme label="a" type="f" corresp="#s13:l1">Vaartje</rhyme>:</l>
        <l id="s13:l4" met="2" type="-+">Hy is 'er het <rhyme label="b" type="f">Boertje</rhyme>,</l>
        <l id="s13:l5" met="2" type="-+">Dat leerd haar, haar <rhyme label="b" type="f" corresp="#s13:l4">Moertje</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Zy spelen, Zy spelen het <rhyme label="b" type="f" corresp="#s13:l4">Hoertje</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="2" type="-+">Ziet dat komt van 't <rhyme label="a" type="f">Minnen</rhyme>,</l>
        <l id="s14:l2" met="2" type="-+">Wat zal hy <rhyme label="a" type="f" corresp="#s14:l1">beginnen</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Al mist hy, Al mist hy zyn <rhyme label="a" type="f" corresp="#s14:l1">Zinnen</rhyme>,</l>
        <l id="s14:l4" met="2" type="-+">Hy moet het <rhyme label="b" type="f">verdragen</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">Want geeft hy ze <rhyme label="b" type="f" corresp="#s14:l4">slagen</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Men zalder, Men zalder van <rhyme label="b" type="f" corresp="#s14:l4">wagen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="2" type="-+">Dus die voor <rhyme label="a" type="f">leedwezen</rhyme>,</l>
        <l id="s15:l2" met="2" type="-+">Van zin is te <rhyme label="a" type="f" corresp="#s15:l1">vrezen</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Die laat hem, Die laat hem <rhyme label="a" type="f" corresp="#s15:l1">belezen</rhyme>:</l>
        <l id="s15:l4" met="2" type="-+">O arme <rhyme label="b" type="f">zotten</rhyme>!</l>
        <l id="s15:l5" met="2" type="-+">Gy laatje <rhyme label="b" type="f" corresp="#s15:l4">bedotten</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Men zalje: Men zalje <rhyme label="b" type="f" corresp="#s15:l4">bespotten</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="2" type="-+">Ik raadje voor 't <rhyme label="a" type="f">leste</rhyme>,</l>
        <l id="s16:l2" met="2" type="-+">Nog eenmaal ten <rhyme label="a" type="f" corresp="#s16:l1">besten</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">De Vrouwen, De Vrouwen zyn <rhyme label="a" type="f" corresp="#s16:l1">Pesten</rhyme>:</l>
        <l id="s16:l4" met="2" type="-+">Men kan door haar <rhyme label="b" type="f">liegen</rhyme>,</l>
        <l id="s16:l5" met="2" type="-+">U lelyk <rhyme label="b" type="f" corresp="#s16:l4">bedriegen</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Dus laat u, Dus laat u niet <rhyme label="b" type="f" corresp="#s16:l4">wiegen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
