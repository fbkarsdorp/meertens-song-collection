  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IS'ias in sijn <rhyme label="a" type="f">tijden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De Seraphijnen <rhyme label="b" type="m">hoort</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Drievuldigheydt <rhyme label="a" type="f" corresp="#s1:l1">belijden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Met eendrachtigh <rhyme label="b" type="m" corresp="#s1:l2">accoort</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Sy singen Heyligh <rhyme label="c" type="f">boven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Heyligh, in 's Hemels <rhyme label="d" type="m">hof</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Door 't heyligh, een Godt <rhyme label="c" type="f" corresp="#s1:l5">loven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En geven hem sijn <rhyme label="d" type="m" corresp="#s1:l6">lof</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Belijden, drie <rhyme label="a" type="f">Personen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Door 't woordt Heyligh <rhyme label="b" type="m">driemael</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Die 't Mystery <rhyme label="a" type="f" corresp="#s2:l1">betoonen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Wil, grijpt een gladden <rhyme label="b" type="m" corresp="#s2:l2">Ael</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Wie kan de Zee met <rhyme label="c" type="f">handen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gieten, in eene <rhyme label="d" type="m">Put</rhyme>?</l>
        <l id="s2:l7" met="3" type="-+">Al d'handen en <rhyme label="c" type="f" corresp="#s2:l5">verstanden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Sijn daer toe heel <rhyme label="d" type="m" corresp="#s2:l6">onnut</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">'t Kint Augustijn dit <rhyme label="a" type="f">leerden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Als hy wilde op 't <rhyme label="b" type="m">strant</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Drievuldigheyt <rhyme label="a" type="f" corresp="#s3:l1">gronderen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Met sijn seer groot <rhyme label="b" type="m" corresp="#s3:l2">verstant</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Ezechiel <rhyme label="c" type="f">passeren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Wilde een water <rhyme label="d" type="m">diep</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hy most haest weder <rhyme label="c" type="f" corresp="#s3:l5">keeren</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Als hy daer ver in <rhyme label="d" type="m" corresp="#s3:l6">liep</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'t Souw hem seker <rhyme label="a" type="f">verslinden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met sijne diepe <rhyme label="b" type="m">kracht</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">In Drievuldigheyt <rhyme label="a" type="f" corresp="#s4:l1">vinden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wy mede sulcken <rhyme label="b" type="m" corresp="#s4:l2">macht</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Wilt ghy geen schade <rhyme label="c" type="f">lijden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Nochte vergaen hier <rhyme label="d" type="m">duer</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Hier van moet ghy <rhyme label="c" type="f" corresp="#s4:l5">belijden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">D'Out-vaders en <rhyme label="d" type="m" corresp="#s4:l6">Schriftuer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als Lammerkens wy <rhyme label="a" type="f">suygen</rhyme>:</l>
        <l id="s5:l2" met="3" type="-+">Dat Vader, ende <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En Heyl'ge Geest <rhyme label="a" type="f" corresp="#s5:l1">getuygen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Geven in 's hemels <rhyme label="b" type="m" corresp="#s5:l2">Throon</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">De'es drie, zijn geen <rhyme label="c" type="f">verscheyden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Goden; maer eenen <rhyme label="d" type="m">Godt</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">'t Geloof moet ons hier <rhyme label="c" type="f" corresp="#s5:l5">leyden</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">'t Verstant moet zijn in't <rhyme label="d" type="m" corresp="#s5:l6">kot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Al hebben sy drie <rhyme label="a" type="f">namen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Zijn nochtans even <rhyme label="b" type="m">wijs</rhyme></l>
        <l id="s6:l3" met="3" type="-+">En oudt alle te <rhyme label="a" type="f" corresp="#s6:l1">samen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Haer kracht is van een <rhyme label="b" type="m" corresp="#s6:l2">prijs</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">s'Hebben een Godd'lijck <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Zijn even hoch van <rhyme label="d" type="m">staet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Sy even hoogh <rhyme label="c" type="f" corresp="#s6:l5">gepresen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Sy geven eenen <rhyme label="d" type="m" corresp="#s6:l6">raedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Laet ons dit al <rhyme label="a" type="f">gelooven</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Eendrachtigh <rhyme label="b" type="m">allegaer</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Neus-wijsheydt dan niet <rhyme label="a" type="f" corresp="#s7:l1">rooven</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Sal, oyt ons Ziel daer <rhyme label="b" type="m" corresp="#s7:l2">naer</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">En laet ons alle <rhyme label="c" type="f">tijden</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Buygen sin en <rhyme label="d" type="m">verstant</rhyme>:</l>
        <l id="s7:l7" met="3" type="-+">Drievuldigheyt <rhyme label="c" type="f" corresp="#s7:l5">belijden</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Als 't werck van Godes <rhyme label="d" type="m" corresp="#s7:l6">hant</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Leert vroome <rhyme label="a" type="f">Catholijcken</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">'t Zijn een van hart en <rhyme label="b" type="m">sin</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Laet eendracht in u <rhyme label="a" type="f" corresp="#s8:l1">blijcken</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Gods liefde oock niet <rhyme label="b" type="m" corresp="#s8:l2">min</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Brant met de <rhyme label="c" type="f">Seraphinnen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">In de lof van een <rhyme label="d" type="m">Godt</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">Persoonen drie wilt <rhyme label="c" type="f" corresp="#s8:l5">minnen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Leeft heel na Godts <rhyme label="d" type="m" corresp="#s8:l6">gebodt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
