    <tags>
      <tag translation="farewell song">afscheidslied</tag>
    </tags>
    <melody>Haar borstjes in haar boezem</melody>
    <categories>
      <category translation="occasions">gelegenheden</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Het scheyden valt ons <rhyme label="a" type="f">suyrelijck</rhyme></l>
        <l id="s1:l2" met="3" type="-+">‘t Is liefde die het <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hierom zijn wy soo <rhyme label="a" type="f" corresp="#s1:l1">truyrelijck</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Bedroeft in ons <rhyme label="b" type="m" corresp="#s1:l2">ghemoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ey mocht het Godt <rhyme label="a" type="f">behaghen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat wy bleven by <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Den tijdt van onsen <rhyme label="a" type="f" corresp="#s2:l1">daghen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In rechter liefde <rhyme label="b" type="m" corresp="#s2:l2">reen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Elck anderen te <rhyme label="a" type="f">stichten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met ons liefs Heeren <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Het soude ons <rhyme label="a" type="f" corresp="#s3:l1">verlichten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En gheven groot <rhyme label="b" type="m" corresp="#s3:l2">confoort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Scheyden gaet ons <rhyme label="a" type="f">bedroeven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Het doet ons lijden <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hoopten wy niet hier <rhyme label="a" type="f" corresp="#s4:l1">boven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">By een te komen <rhyme label="b" type="m" corresp="#s4:l2">dan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Keert doch al u <rhyme label="a" type="f">ghedachten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Tot Godt in u <rhyme label="b" type="m">ghebedt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat wy ons moghen <rhyme label="a" type="f" corresp="#s5:l1">wachten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En houden <rhyme label="b" type="m" corresp="#s5:l2">onbesmet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En hy wil ons <rhyme label="a" type="f">bewaren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Van ‘t quaet door sijne <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Nae sijnen wil <rhyme label="a" type="f" corresp="#s6:l1">vergaren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">In het Hemelsche <rhyme label="b" type="m" corresp="#s6:l2">Landt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Naer ‘t wellick wy <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Och! waer vervult de <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Om de Kroon te <rhyme label="a" type="f" corresp="#s7:l1">ontfanghen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Van Christo met <rhyme label="b" type="m" corresp="#s7:l2">jolijt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Haest sal de Heere <rhyme label="a" type="f">komen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dat weten wy <rhyme label="b" type="m">voorwaer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dan worden <rhyme label="a" type="f" corresp="#s8:l1">op-ghenomen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Gods Kinders <rhyme label="b" type="m" corresp="#s8:l2">allegaer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ey lieve laet ons <rhyme label="a" type="f">waken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Vyerich tot aller <rhyme label="b" type="m">stont</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Op dat wy daer <rhyme label="a" type="f" corresp="#s9:l1">gheraken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Verschijnen heel <rhyme label="b" type="m" corresp="#s9:l2">ghesont</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Iae laet ons ‘t nieu <rhyme label="a" type="f">aenveerden</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Ey lopen niet meer <rhyme label="b" type="m">blint</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En daer in trou <rhyme label="a" type="f" corresp="#s10:l1">volheerden</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Elck als een lieve <rhyme label="b" type="m" corresp="#s10:l2">Kindt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Zyn wy Gods <rhyme label="a" type="f">uyt-verkooren</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">En draghen sijnen <rhyme label="b" type="m">naem</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Soo laet ons naer ‘t <rhyme label="a" type="f" corresp="#s11:l1">behooren</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Nu leven <rhyme label="b" type="m" corresp="#s11:l2">ghehoorsaem</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">‘t Is haest aen eyndt <rhyme label="a" type="f">gheloopen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Ons tijt is seer nae <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Wy moeten vastlijck <rhyme label="a" type="f" corresp="#s12:l1">hoopen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Dat Godt ons hulper <rhyme label="b" type="m" corresp="#s12:l2">zy</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Een dinck laet ons <rhyme label="a" type="f">versinnen</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">’t Wort ons gheleert van <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Elck anderen te <rhyme label="a" type="f" corresp="#s13:l1">beminnen</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">’t Is het nieuwe <rhyme label="b" type="m" corresp="#s13:l2">ghebodt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Reyn liefde als <rhyme label="a" type="f">herbooren</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Draeght doch elck anders <rhyme label="b" type="m">last</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Als Christus deed’ te <rhyme label="a" type="f" corresp="#s14:l1">vooren</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">’t Is sijn loeer, houtse <rhyme label="b" type="m" corresp="#s14:l2">vast</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Met danck laet ons hem <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Die ons dus heeft <rhyme label="b" type="m">versaemt</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">En ons eerlijck <rhyme label="a" type="f" corresp="#s15:l1">bewijsen</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Als onsen roep <rhyme label="b" type="m" corresp="#s15:l2">betaemt</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Als wy nu moeten <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Van eenen, op dit <rhyme label="b" type="m">termijn</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Soo wil u Godt <rhyme label="a" type="f" corresp="#s16:l1">gheleyden</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">En u behoeder <rhyme label="b" type="m" corresp="#s16:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Nu adieu <rhyme label="a" type="f">allegader</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Zijt bevolen <rhyme label="b" type="m">ghelijck</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Godt onsen lieven <rhyme label="a" type="f" corresp="#s17:l1">Vader</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">In sijn ghenade <rhyme label="b" type="m" corresp="#s17:l2">Rijck</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Seer lieffelijck in <rhyme label="a" type="f">vrede</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Gheleyd’ u sijnen <rhyme label="b" type="m">Gheest</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Tot ghy in ‘s Hemels <rhyme label="a" type="f" corresp="#s18:l1">stede</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Komt uyt dit wilt <rhyme label="b" type="m" corresp="#s18:l2">Foreest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
