  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Simsons Vossen, elck sijn <rhyme label="a" type="m">steert</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gheprickeld voeld door <rhyme label="b" type="m">brandt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Liep yder als een hollend <rhyme label="a" type="m" corresp="#s1:l1">Peert</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Al rasende door 't <rhyme label="b" type="m" corresp="#s1:l2">Landt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En waer die Vuer-steert <rhyme label="c" type="m">quam</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Heeft het in korte <rhyme label="d" type="f">stonden</rhyme></l>
        <l id="s1:l7" met="3" type="-+">De hongerighe <rhyme label="c" type="m" corresp="#s1:l5">vlam</rhyme></l>
        <l id="s1:l8" met="3" type="-+">In 't kostlijck zaedt <rhyme label="d" type="f" corresp="#s1:l6">ghesonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Sonden, die nu gaen in <rhyme label="a" type="m">swangh</rhyme></l>
        <l id="s2:l2" met="3" type="-+">By velen lief en <rhyme label="b" type="m">waert</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Gaen even Simsons <rhyme label="a" type="m" corresp="#s2:l1">Vossen-gangh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Bedrieghelijck van <rhyme label="b" type="m" corresp="#s2:l2">aert</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Maer achter sleept haer <rhyme label="c" type="m">steert</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die doet Godts toorn <rhyme label="d" type="f">ontbranden</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat hy sijn Wraeck-swaert <rhyme label="c" type="m" corresp="#s2:l5">keert</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Te worghen 't heyl der <rhyme label="d" type="f" corresp="#s2:l6">Landen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vanght ons de schalcke Vossen <rhyme label="a" type="m">dan</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Bedreigelijck en <rhyme label="b" type="m">ergh</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Daer van de alderminste, <rhyme label="a" type="m" corresp="#s3:l1">kan</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Bederven Godts <rhyme label="b" type="m" corresp="#s3:l2">Wijn-bergh</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Op datze Zion <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Door 't Hong'righ vuer <rhyme label="d" type="f">verwoesten</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En 't knagende <rhyme label="c" type="m" corresp="#s3:l5">verdriet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Sijn Schueren vol en <rhyme label="d" type="f" corresp="#s3:l6">Oesten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
