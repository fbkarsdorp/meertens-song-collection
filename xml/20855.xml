  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs op een aengenaemen <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Sint Ian Baptist Heer Ie-sum <rhyme label="a" type="m" corresp="#s1:l1">sagh</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Soo heeft Hy Hem ge-we-sen <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die geen die by sich qua-men <rhyme label="b" type="m" corresp="#s1:l3">staen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy heeft geseyt, Siet daer het <rhyme label="a" type="m">Lam</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Het welcke ons zond' wegh <rhyme label="a" type="m" corresp="#s2:l1">nam</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Met sijne vinger wees Hy <rhyme label="b" type="m">Hem</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En Hy bele'en Hem met sijn <rhyme label="b" type="m" corresp="#s2:l3">stem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit hoorden aen Discipels <rhyme label="a" type="m">twee</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die Jesum Christum volghden <rhyme label="a" type="m" corresp="#s3:l1">dree</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Gehoorsaem zijnde aen het <rhyme label="b" type="m">woord</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Van haeren Meester, soo 't <rhyme label="b" type="m" corresp="#s3:l3">behoort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Andraeas was van dese <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die Jesum Christum na gingh <rhyme label="a" type="m" corresp="#s4:l1">tre'en</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Tot wien den Heer is om <rhyme label="b" type="m">gekeert</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En sey, Wat is 't dat ghy <rhyme label="b" type="m" corresp="#s4:l3">begeert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sy seyden, Meester waer woont <rhyme label="a" type="m">Ghy</rhyme>?</l>
        <l id="s5:l2" met="4" type="-+">Dit souden geerne weten <rhyme label="a" type="m" corresp="#s5:l1">wy</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Heer Jesus gaf dit soet <rhyme label="b" type="m">bescheyd</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Komt, Vrienden, komt, heeft Hy <rhyme label="b" type="m" corresp="#s5:l3">geseyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Komt vry, en siet eens waer ick <rhyme label="a" type="m">woon</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die niemand gaen laet sonder <rhyme label="a" type="m" corresp="#s6:l1">loon</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Sy gingen me'e en waren <rhyme label="b" type="m">bly</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Sy bleven Jesu dien dagh <rhyme label="b" type="m" corresp="#s6:l3">by</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wie sal ons seggen met wat <rhyme label="a" type="m">vreughd</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat dees Discipels zijn <rhyme label="a" type="m" corresp="#s7:l1">verheught</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Als een geheelen dagh den <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Haer uytgeleyt had sijne <rhyme label="b" type="m" corresp="#s7:l3">Leer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hoe is ontsteken toen haer <rhyme label="a" type="m">hart</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Hoe is verdreven toen haer <rhyme label="a" type="m" corresp="#s8:l1">smart</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als Jesus haer sijn leeringh <rhyme label="b" type="m">gaf</rhyme>!</l>
        <l id="s8:l4" met="4" type="-+">Die alle droefheyd haer nam <rhyme label="b" type="m" corresp="#s8:l3">af</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Andraeas ons nu toonen <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Sijn groote vreugd; hoort toe vry <rhyme label="a" type="m" corresp="#s9:l1">al</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Want als Hy sijnen Broeder <rhyme label="b" type="m">vond'</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Brocht Hy Hem by den Heer <rhyme label="b" type="m" corresp="#s9:l3">terstond</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hy sey met groote vreughd <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Ick boodtschap u den blijden <rhyme label="a" type="m" corresp="#s10:l1">tijd</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Messias is gekomen <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Die ons verlost van 't eeuwigh <rhyme label="b" type="m" corresp="#s10:l3">vier</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Gevonden hebben wy dien <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Die uyt den Hemel quam hier <rhyme label="a" type="m" corresp="#s11:l1">ne'er</rhyme>;</l>
        <l id="s11:l3" met="4" type="-+">O Simon, 'k koom U seggen <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Gevonden is van ons dien <rhyme label="b" type="m" corresp="#s11:l3">Man</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Hy had 't geseydt; Hy nam Hem <rhyme label="a" type="m">me'e</rhyme>:</l>
        <l id="s12:l2" met="4" type="-+">Tot Jesum gingen dese <rhyme label="a" type="m" corresp="#s12:l1">twee</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Een liefdens werck heeft Hy <rhyme label="b" type="m">gevrocht</rhyme>;</l>
        <l id="s12:l4" met="4" type="-+">By Jesus Hy sijn Broeder <rhyme label="b" type="m" corresp="#s12:l3">brocht</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Voldoet, Andraea! Ghy mijn <rhyme label="a" type="m">wensch</rhyme></l>
        <l id="s13:l2" met="4" type="-+">By Jesvs, die is God en <rhyme label="a" type="m" corresp="#s13:l1">mensch</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">Leydt my tot Hem door uw' <rhyme label="b" type="m">gebe'en</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Waer geen gesteen is, noch <rhyme label="b" type="m" corresp="#s13:l3">geween</rhyme>:</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Dan sal ick vrolijck met U <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">'k Sal hebben dan noch druck noch <rhyme label="a" type="m" corresp="#s14:l1">pijn</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">Och of eens quam dien blijden <rhyme label="b" type="m">dagh</rhyme>!</l>
        <l id="s14:l4" met="4" type="-+">Och of ick eens Heer Jesvm <rhyme label="b" type="m" corresp="#s14:l3">sagh</rhyme>!</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">O Jesu! zijt mijn eenigh <rhyme label="a" type="m">lot</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Ick sal volbrengen u <rhyme label="a" type="m" corresp="#s15:l1">gebod</rhyme>:</l>
        <l id="s15:l3" met="4" type="-+">Schenckt my, ick bidd' U // 's Hemels <rhyme label="b" type="m">kroon</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Gheeft my U selven tot een <rhyme label="b" type="m" corresp="#s15:l3">loon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
