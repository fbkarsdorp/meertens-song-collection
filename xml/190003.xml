  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">'t Was Nacht, maar <rhyme label="a" type="m">Maneschyn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Toen my de Vlooijen <rhyme label="b" type="f">beeten</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Ik kon in 't Bed niet <rhyme label="a" type="m" corresp="#s1:l1">zyn</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">De hitte deed my <rhyme label="b" type="f" corresp="#s1:l2">zweeten</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">'k Stond op, en nam <rhyme label="c" type="m">Tabak</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En rookte op myn <rhyme label="c" type="m" corresp="#s1:l5">gemak</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">'k Stond op en nam <rhyme label="c" type="m" corresp="#s1:l5">Tabak</rhyme>.</l>
        <l id="s1:l8" met="3" type="-+">En rookte op myn <rhyme label="c" type="m" corresp="#s1:l5">gemak</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'k Zat voor myn <rhyme label="a" type="m">Vensterraam</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">In myn Japon <rhyme label="b" type="f">gedooken</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">De Tyd was juist <rhyme label="a" type="m" corresp="#s2:l1">bekwaam</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gelyk men zegt voor <rhyme label="b" type="f" corresp="#s2:l2">Spooken</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Als zynde dan ter <rhyme label="c" type="m">been</rhyme>;</l>
        <l id="s2:l6" met="3" type="-+">De Klok was effen <rhyme label="c" type="m" corresp="#s2:l5">één</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Als zynde dan ter <rhyme label="c" type="m" corresp="#s2:l5">been</rhyme>;</l>
        <l id="s2:l8" met="3" type="-+">De Klok was effen <rhyme label="c" type="m" corresp="#s2:l5">één</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">'k Had 's avonds, om de <rhyme label="a" type="m">klugt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">By Campioen <rhyme label="b" type="f">geleezen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van Spook en <rhyme label="a" type="m" corresp="#s3:l1">Spookgerucht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En dacht zou 't konnen <rhyme label="b" type="f" corresp="#s3:l2">weezen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat zich by nacht <rhyme label="c" type="m">misschien</rhyme></l>
        <l id="s3:l6" met="3" type="-+">De Geesten laaten <rhyme label="c" type="m" corresp="#s3:l5">zien</rhyme>?</l>
        <l id="s3:l7" met="3" type="-+">Dat zich by nacht <rhyme label="c" type="m" corresp="#s3:l5">misschien</rhyme></l>
        <l id="s3:l8" met="3" type="-+">De Geesten laaten <rhyme label="c" type="m" corresp="#s3:l5">zien</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Daar ik dit <rhyme label="a" type="m">overdacht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Zag ik aan de <rhyme label="b" type="f">overzyde</rhyme></l>
        <l id="s4:l3" met="3" type="-+">By 't Maanlicht op de <rhyme label="a" type="m" corresp="#s4:l1">Gracht</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Een paar Verschynsels, <rhyme label="b" type="f" corresp="#s4:l2">blyde</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Zo 't scheen, dat zy <rhyme label="c" type="m">malkaêr</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ontmoetten: 't Is wel <rhyme label="c" type="m" corresp="#s4:l5">waar</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Zo 't scheen, dat zy <rhyme label="c" type="m" corresp="#s4:l5">malkaêr</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Ontmoetten: 't Is wel <rhyme label="c" type="m" corresp="#s4:l5">waar</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Aan beider wit <rhyme label="a" type="m">gewaad</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dacht ik het waren <rhyme label="b" type="f">Spooken</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Of Geesten in dien <rhyme label="a" type="m" corresp="#s5:l1">staat</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ten Afgronde <rhyme label="b" type="f" corresp="#s5:l2">uitgebrooken</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En zy verdweene <rhyme label="c" type="m">knap</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Juist in een <rhyme label="c" type="m" corresp="#s5:l5">Keldertrap</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">En zy verdweene <rhyme label="c" type="m" corresp="#s5:l5">knap</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Juist in een <rhyme label="c" type="m" corresp="#s5:l5">Keldertrap</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">'k Dacht nu geloof ik <rhyme label="a" type="m">meê</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dat Geesten wel <rhyme label="b" type="f">verschynen</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">'k Merk duidlyk waar die <rhyme label="a" type="m" corresp="#s6:l1">twee</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Fluks voor myn oog <rhyme label="b" type="f" corresp="#s6:l2">verdwynen</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Zy daalden immers <rhyme label="c" type="m">neêr</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En 'k zie hen thans niet <rhyme label="c" type="m" corresp="#s6:l5">meêr</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Zy daalden immers <rhyme label="c" type="m" corresp="#s6:l5">neêr</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">En 'k zie hen thans niet <rhyme label="c" type="m" corresp="#s6:l5">meêr</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">'k Hield op de plaats myn <rhyme label="a" type="m">oog</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En toen 'k nog stond te <rhyme label="b" type="f">kyken</rhyme>!</l>
        <l id="s7:l3" met="3" type="-+">Rees 't Geestenpaar om <rhyme label="a" type="m" corresp="#s7:l1">hoog</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wanneer 't my kwam te <rhyme label="b" type="f" corresp="#s7:l2">blyken</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Dat het ter zelver <rhyme label="c" type="m">stond</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Zich vol genoegen <rhyme label="c" type="m" corresp="#s7:l5">vond</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dat het ter zelver <rhyme label="c" type="m" corresp="#s7:l5">stond</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Zich vol genoegen <rhyme label="c" type="m" corresp="#s7:l5">vond</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ik zag den eenen <rhyme label="a" type="m">Geest</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Den andren hartlyk <rhyme label="b" type="f">kusschen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Maar dat my 't <rhyme label="a" type="m" corresp="#s8:l1">allermeest</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Verwonderde, <rhyme label="b" type="f" corresp="#s8:l2">ondertusschen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Was dat dit <rhyme label="c" type="m">Geesten-Paar</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Juist huis hield naast <rhyme label="c" type="m" corresp="#s8:l5">elkaêr</rhyme>.</l>
        <l id="s8:l7" met="3" type="-+">Was dat dit <rhyme label="c" type="m" corresp="#s8:l5">Geesten-Paar</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Juist huis hield naast <rhyme label="c" type="m" corresp="#s8:l5">elkaêr</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">'k Had echter nooit <rhyme label="a" type="m">gehoord</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Van Spooken in die <rhyme label="b" type="f">Huizen</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Myn vrees verdween toen <rhyme label="a" type="m" corresp="#s9:l1">voort</rhyme></l>
        <l id="s9:l4" met="3" type="-+">En om 't niet uit te <rhyme label="b" type="f" corresp="#s9:l2">pluizen</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Wat Spookery het <rhyme label="c" type="m">was</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Verklaarde 't zelf zich <rhyme label="c" type="m" corresp="#s9:l5">rasch</rhyme>.</l>
        <l id="s9:l7" met="3" type="-+">Wat Spookery het <rhyme label="c" type="m" corresp="#s9:l5">was</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Verklaarde 't zelf zich <rhyme label="c" type="m" corresp="#s9:l5">rasch</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">De Zoon van gierige <rhyme label="a" type="m">Aagt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die niet vermogt te <rhyme label="b" type="f">paaren</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Had Ryk-buurs Kind <rhyme label="a" type="m" corresp="#s10:l1">behaagd</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Des zy by-één <rhyme label="b" type="f" corresp="#s10:l2">vergaeren</rhyme></l>
        <l id="s10:l5" met="3" type="-+">In 't midden van den <rhyme label="c" type="m">nacht</rhyme>:</l>
        <l id="s10:l6" met="3" type="-+">Zo spookten zy met <rhyme label="c" type="m" corresp="#s10:l5">kracht</rhyme>.</l>
        <l id="s10:l7" met="3" type="-+">In 't midden van den <rhyme label="c" type="m" corresp="#s10:l5">nacht</rhyme>:</l>
        <l id="s10:l8" met="3" type="-+">Zo spookten zy met <rhyme label="c" type="m" corresp="#s10:l5">kracht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">'t Gevolg dier <rhyme label="a" type="m">Spookery</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Gaf hun een manlyk <rhyme label="b" type="f">Geestje</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">Van 't Spooken zyn zy <rhyme label="a" type="m" corresp="#s11:l1">vry</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Na 't blyde <rhyme label="b" type="f" corresp="#s11:l2">Huwlyksfeestje</rhyme>.</l>
        <l id="s11:l5" met="3" type="-+">En ik, voor Spreukjes <rhyme label="c" type="m">doof</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Verban het <rhyme label="c" type="m" corresp="#s11:l5">Spookgeloof</rhyme>.</l>
        <l id="s11:l7" met="3" type="-+">En ik, voor Spreukjes <rhyme label="c" type="m" corresp="#s11:l5">doof</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Verban het <rhyme label="c" type="m" corresp="#s11:l5">Spookgeloof</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
