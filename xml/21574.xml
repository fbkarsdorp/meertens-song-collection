  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SChout Babylon al <rhyme label="a" type="m">ghemeyn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Oft ghy coemt in <rhyme label="b" type="m">tempeest</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Het is een hoere <rhyme label="a" type="m" corresp="#s1:l1">onreyn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Moordadich, <rhyme label="b" type="m" corresp="#s1:l2">onbeureest</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Sy stortet onnoosel <rhyme label="c" type="f">bloet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Eylacen aen allen <rhyme label="d" type="f">sijden</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Dit doet die Drake <rhyme label="c" type="f" corresp="#s1:l5">verwoet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Die slanghe van ouden <rhyme label="d" type="f" corresp="#s1:l6">tijden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Verciert met purpur <rhyme label="a" type="m">root</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Den Beker inde <rhyme label="b" type="m">hant</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Veruolghende ter <rhyme label="a" type="m" corresp="#s2:l1">doot</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die goet sijn en <rhyme label="b" type="m" corresp="#s2:l2">vailliant</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Haer wreede <rhyme label="c" type="f">Tyrannije</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hoe langhe sal sy <rhyme label="d" type="f">blijuen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">En haer <rhyme label="c" type="f" corresp="#s2:l5">Afgoderije</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Hoe langhe sal sy <rhyme label="d" type="f" corresp="#s2:l6">beclijuen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Strijdt vroom aen elcken <rhyme label="a" type="m">cant</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En laet v niet <rhyme label="b" type="m">verleen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">En vreest noch sweert noch <rhyme label="a" type="m" corresp="#s3:l1">brandt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van Godts woort wilt niet <rhyme label="b" type="m" corresp="#s3:l2">scheen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Wel op ghy cloecke <rhyme label="c" type="f">knechten</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ghy vrome <rhyme label="d" type="f">Martelaren</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Laet ons nv vromelijck <rhyme label="c" type="f" corresp="#s3:l5">vechten</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Al teghen de boose <rhyme label="d" type="f" corresp="#s3:l6">Scharen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Christus ons <rhyme label="a" type="m">Capiteyn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Is vore inden <rhyme label="b" type="m">strijdt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Wy volghen hem groot en <rhyme label="a" type="m" corresp="#s4:l1">cleyn</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Onder de Baniere <rhyme label="b" type="m" corresp="#s4:l2">wijdt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Slaet op Trompet des <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ghy vrome <rhyme label="d" type="f">Predicanten</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Al teghen de wilde <rhyme label="c" type="f" corresp="#s4:l5">Beyren</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Als Godt rechte <rhyme label="d" type="f" corresp="#s4:l6">ghesanten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Prince liefse <rhyme label="a" type="m">Godt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Versterckt ons inden <rhyme label="b" type="m">gheest</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Wy zijn des werelts <rhyme label="a" type="m" corresp="#s5:l1">spot</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Genijt van minst en <rhyme label="b" type="m" corresp="#s5:l2">meest</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Met Babylon wy <rhyme label="c" type="f">lieden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En hebben gheen <rhyme label="d" type="f">alliantie</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Laet ons wt Babylon <rhyme label="c" type="f" corresp="#s5:l5">vlieden</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Sy houden gheen <rhyme label="d" type="f" corresp="#s5:l6">ordonnantie</rhyme>.</l>
      </lg>
    </lg>
  </text>
