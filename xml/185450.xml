    <tags/>
    <melody>Hoe zoet is het daar de vriendschap woont</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoe zoet is 't waar de liefde <rhyme label="a" type="m">woont</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die jonge harten <rhyme label="b" type="m">blaakt</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Waar de echt met palmen haar <rhyme label="a" type="m" corresp="#s1:l1">bekroont</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wordt hemelvreugd <rhyme label="b" type="m" corresp="#s1:l2">gesmaakt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Ze ontgloeit en kweekt het <rhyme label="c" type="m">levensvuur</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En maakt de gunsten der <rhyme label="c" type="m" corresp="#s1:l5">natuur</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Volmaakt, volmaakt, <rhyme label="b" type="m" corresp="#s1:l2">volmaakt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het eenzaam leven kwijnt <rhyme label="a" type="m">daarheen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gelijk een droeve <rhyme label="b" type="m">plant</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die nooit een zonnestraal <rhyme label="a" type="m" corresp="#s2:l1">bescheen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Verdort in 't zielloos <rhyme label="b" type="m" corresp="#s2:l2">zand</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">De liefde, vruchtbaar in haar <rhyme label="c" type="m">kracht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Ontvonkt en hecht al 't aardsch <rhyme label="c" type="m" corresp="#s2:l5">geslacht</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Aanéén, aanéén, <rhyme label="b" type="m" corresp="#s2:l2">aanéén</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zij doet de maatschappij <rhyme label="a" type="m">bestaan</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Door spruitjes, nieuw <rhyme label="b" type="m">geteeld</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die eens der oudren plaats <rhyme label="a" type="m" corresp="#s3:l1">beslaan</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Als hun verjeugdigd <rhyme label="b" type="m" corresp="#s3:l2">beeld</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Hoe wordt het oog door minzaam <rhyme label="c" type="m">kroost</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Welks lief gelaat van onschuld <rhyme label="c" type="m" corresp="#s3:l5">bloost</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Gestreeld, gestreeld, <rhyme label="b" type="m" corresp="#s3:l2">gestreeld</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dus ook volmaakt gij uw <rhyme label="a" type="m">genot</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Door 't zagte <rhyme label="b" type="m">huwlijksjuk</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">ô Paar, dat uw veréénigd <rhyme label="a" type="m" corresp="#s4:l1">lot</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Beveiligt tegen <rhyme label="b" type="m" corresp="#s4:l2">druk</rhyme>!</l>
        <l id="s4:l5" met="4" type="-+">Wij wenschen u, in 't schoonst <rhyme label="c" type="m">verbond</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Nog menig jaar na dezen <rhyme label="c" type="m" corresp="#s4:l5">stond</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Geluk, geluk, <rhyme label="b" type="m" corresp="#s4:l2">geluk</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Vergaêrt, tot grooter <rhyme label="a" type="m">zielsgeneugt'</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Door eendragt, liefde en <rhyme label="b" type="m">vreê</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">De schoonste spruitjes uwer <rhyme label="a" type="m" corresp="#s5:l1">jeugd</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Een deelt uw heil hen <rhyme label="b" type="m" corresp="#s5:l2">meê</rhyme>!</l>
        <l id="s5:l5" met="4" type="-+">Zijt lustig, werkzaam, <rhyme label="c" type="m">onvermoeid</rhyme>!</l>
        <l id="s5:l6" met="4" type="-+">Zoo juichen we, als gij welig <rhyme label="c" type="m" corresp="#s5:l5">bloeit</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Hoezee! hoezee! <rhyme label="b" type="m" corresp="#s5:l2">hoezee</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>
