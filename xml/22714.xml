<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22714</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody>Les Bouffons</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Al voor des Werlts grondt Ick <rhyme label="a" type="m">stondt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">In Godes behagen claer <rhyme label="b" type="m">voorwaer</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Sijn Geest blies in mynen <rhyme label="a" type="m" corresp="#s1:l1">mondt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">doen leefde mijn Ziele <rhyme label="b" type="m" corresp="#s1:l2">aldaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">So heeft hy my dat leven <rhyme label="a" type="m">ghegheven</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">In mijnder Zielen kracht mit <rhyme label="b" type="m">macht</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Waer vandtmen die vreuchde <rhyme label="a" type="m" corresp="#s2:l1">beschreven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die Godt voort heeft <rhyme label="b" type="m" corresp="#s2:l2">ghebracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och Heer ghy sijt alleyn die Ick <rhyme label="a" type="m">meyn</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Mijn troost, mijn toeverlaet hoet <rhyme label="b" type="m">gaet</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Alleyn mijns hertzen <rhyme label="a" type="m" corresp="#s3:l1">ghreyn</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Mijn Hemelsche <rhyme label="b" type="m" corresp="#s3:l2">Succaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die schoonste heb Ick vekooren, <rhyme label="a" type="m">herbooren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die my mijn herte verheucht in <rhyme label="b" type="m">deucht</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Sijn snaren sijn soet om <rhyme label="a" type="m" corresp="#s4:l1">hooren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gaen boven alle <rhyme label="b" type="m" corresp="#s4:l2">vreucht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Prince, mijn sonden wtveecht und' <rhyme label="a" type="m">dreecht</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Mijn schult int oordeel doch niet meer <rhyme label="b" type="m">siet</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Maeckt levendich soo ghy <rhyme label="a" type="m" corresp="#s5:l1">pleecht</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Of Ick blijf int <rhyme label="b" type="m" corresp="#s5:l2">verdriet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
