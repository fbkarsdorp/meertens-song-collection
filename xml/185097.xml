      </coordinates>
    </location>
    <tags/>
    <melody>Ik heb gezien de tijd</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wy hebben groote <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O broeders <rhyme label="b" type="f">uytvercoren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wanneer wy van u <rhyme label="a" type="m" corresp="#s1:l1">deught</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En goeden wandel <rhyme label="b" type="f" corresp="#s1:l2">horen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En als ons comt te <rhyme label="b" type="f" corresp="#s1:l2">voren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat aen u onsen <rhyme label="c" type="m">vlijt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Gheensins en is <rhyme label="b" type="f" corresp="#s1:l2">verloren</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Dat maeckt ons seer <rhyme label="c" type="m" corresp="#s1:l6">verblijdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want welck is onsen <rhyme label="a" type="m">roem</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Ons croone, prijs, oft <rhyme label="b" type="f">eere</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Welck is ons <rhyme label="a" type="m" corresp="#s2:l1">eyghendom</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat ons verblijdt soo <rhyme label="b" type="f" corresp="#s2:l2">seere</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sijt ghy niet in den <rhyme label="b" type="f" corresp="#s2:l2">Heere</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ons herten vreught <rhyme label="c" type="m">alleen</rhyme>?</l>
        <l id="s2:l7" met="3" type="-+">Wy hebben <rhyme label="b" type="f" corresp="#s2:l2">nimmermeere</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ter werelt anders <rhyme label="c" type="m" corresp="#s2:l6">geen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al hebben wy <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ter werelt in veel <rhyme label="b" type="f">saken</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wy achtent alles <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wanneer wy u <rhyme label="b" type="f" corresp="#s3:l2">ghenaken</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ghy cont ons soo <rhyme label="b" type="f" corresp="#s3:l2">vermaken</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met Gheestelijcken <rhyme label="c" type="m">troost</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">In ons ghemoet wy <rhyme label="b" type="f" corresp="#s3:l2">smaken</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">So menigh soet <rhyme label="c" type="m" corresp="#s3:l6">propoost</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe lieflijck, en hoe <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ist, en hoe saligh <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wanneer ghebroeders <rhyme label="a" type="m" corresp="#s4:l1">sijn</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Met malcander in <rhyme label="b" type="f" corresp="#s4:l2">vrede</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">In ware <rhyme label="b" type="f" corresp="#s4:l2">eenighede</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En in der liefden <rhyme label="c" type="m">band</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">‘t Vermagh in den <rhyme label="b" type="f" corresp="#s4:l2">ghebede</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Seer vele van Gods <rhyme label="c" type="m" corresp="#s4:l6">hant</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">‘t Is boven maten <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Als Godts heyl’ghe <rhyme label="b" type="f">dienaren</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ghelijck een Balsems <rhyme label="a" type="m" corresp="#s5:l1">vloet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">By malcander <rhyme label="b" type="f" corresp="#s5:l2">vergaren</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En met des herten <rhyme label="b" type="f" corresp="#s5:l2">snaren</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Oeffenen soet <rhyme label="c" type="m">ghesanck</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Den Heere der <rhyme label="b" type="f" corresp="#s5:l2">Heyrscharen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Tot eere, lof, en <rhyme label="c" type="m" corresp="#s5:l6">danck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">‘t Is beter eenen <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Te sijn in Godts <rhyme label="b" type="f">voorhoven</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Daermen van herten <rhyme label="a" type="m" corresp="#s6:l1">mach</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Des Heeren name <rhyme label="b" type="f" corresp="#s6:l2">loven</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dan hier te sitten <rhyme label="b" type="f" corresp="#s6:l2">boven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Ter werelt duysent <rhyme label="c" type="m">jaer</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">‘t Is beter zijn <rhyme label="b" type="f" corresp="#s6:l2">verschoven</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Van de Godloose <rhyme label="c" type="m" corresp="#s6:l6">schaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Een bede moet ick <rhyme label="a" type="m">noch</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Broeders aen u <rhyme label="b" type="f">begheeren</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En laet u door ‘t <rhyme label="a" type="m" corresp="#s7:l1">bedroch</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Des Sathans niet <rhyme label="b" type="f" corresp="#s7:l2">afkeeren</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En laet u niet <rhyme label="b" type="f" corresp="#s7:l2">turbeeren</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Van Creaturen <rhyme label="c" type="m">veel</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Wilt die versmaden <rhyme label="b" type="f" corresp="#s7:l2">leeren</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">De liefde is te <rhyme label="c" type="m" corresp="#s7:l6">eel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Acht liefde boven <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Al soud’ de werelt <rhyme label="b" type="f">scherven</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">In tijdelijck <rhyme label="a" type="m" corresp="#s8:l1">gheval</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Wilt liever alles <rhyme label="b" type="f" corresp="#s8:l2">derven</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Om liefde te <rhyme label="b" type="f" corresp="#s8:l2">verwerven</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En denckt in elck <rhyme label="c" type="m">saysoen</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">Ick wil veel liever <rhyme label="b" type="f" corresp="#s8:l2">sterven</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Als liefde hinder <rhyme label="c" type="m" corresp="#s8:l6">doen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dus broeders waer ghy <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Van goet doen wilt niet <rhyme label="b" type="f">swichten</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Dewijl wy hebben <rhyme label="a" type="m" corresp="#s9:l1">tijdt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Laet ons malcander <rhyme label="b" type="f" corresp="#s9:l2">stichten</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En ons licht laten <rhyme label="b" type="f" corresp="#s9:l2">lichten</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Op dat daer uyt seer <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Een yeghelijck mach <rhyme label="b" type="f" corresp="#s9:l2">richten</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Dat wy Gods kinders <rhyme label="c" type="m" corresp="#s9:l6">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
