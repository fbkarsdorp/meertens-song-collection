  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">En es geen vrient up minen <rhyme label="a" type="m">heit</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die men so lichte verwerken <rhyme label="b" type="m">mach</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Om dinc daer niet vele an en <rhyme label="c" type="m">cleift</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Het doet sijn <rhyme label="a" type="m" corresp="#s1:l1">onghestadicheit</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Dies noit ghetrauwe vrient en <rhyme label="b" type="m" corresp="#s1:l2">plach</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En es gheen vrient up minen <rhyme label="a" type="m">heit</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die men so lichte verwerken <rhyme label="b" type="m">mach</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Hi gheift in redenen <rhyme label="c" type="m">verdrach</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Daer wankel vrient niet om en <rhyme label="a" type="m" corresp="#s2:l1">gheift</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Dies noit ghetrauwe vrient en <rhyme label="b" type="m" corresp="#s2:l2">plach</rhyme></l>
      </lg>
