    <tags/>
    <melody>Het was in de zoete maand van mei</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">CLimeen ik ben op nieuw <rhyme label="a" type="m">gewondt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Door 't kusje van U lieve <rhyme label="a" type="m" corresp="#s1:l1">mondt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat gy my hebt <rhyme label="b" type="f">gegeeven</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Myn Ziel blyft nog aen 't zagte <rhyme label="a" type="m" corresp="#s1:l1">rond</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van uwe lipjes <rhyme label="b" type="f" corresp="#s1:l3">kleeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ach! hoe verkwikt dat kusje <rhyme label="a" type="m">myn</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Als Godendrank of <rhyme label="a" type="m" corresp="#s2:l1">Ambrozyn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ã´! Wellust van myn <rhyme label="b" type="f">leeven</rhyme>!</l>
        <l id="s2:l4" met="4" type="-+">Hoe dankbaer zou uw Minnaer <rhyme label="a" type="m" corresp="#s2:l1">zyn</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Woud gy meer zulke <rhyme label="b" type="f" corresp="#s2:l3">geeven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Myn Ziel buygt neder voor het <rhyme label="a" type="m">ligt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Van u aenlokkelyk <rhyme label="a" type="m" corresp="#s3:l1">gezigt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Door liefden <rhyme label="b" type="f">aengedreven</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">U naem zal door myn Zang en <rhyme label="a" type="m" corresp="#s3:l1">Digt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Op alle tongen <rhyme label="b" type="f" corresp="#s3:l3">zweven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hoe wenschelyk, Climeen! hoe <rhyme label="a" type="m">zoet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Is die betrachting aen 't <rhyme label="a" type="m" corresp="#s4:l1">gemoet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Van myn, die dus <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">In uwe gunst, zyn lusjes <rhyme label="a" type="m" corresp="#s4:l1">boedt</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Ach! duurde 't al myn <rhyme label="b" type="f" corresp="#s4:l3">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
