    <tags/>
    <melody>O zalig heilig Bethlehem</melody>
  <author>Roelant de Kater</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Aanhoord dog al te zamen <rhyme label="a" type="m">gy</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die u tot dees Neering <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Al met de Jongeren <rhyme label="a" type="m" corresp="#s1:l1">Christy</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Om Heyliglijk als die te <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als gy van ‘t Land ter Zee wild <rhyme label="a" type="m">gaan</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Neemt een goed afscheyd van uw <rhyme label="b" type="f">Vrienden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Van dronke drinken wild af <rhyme label="a" type="m" corresp="#s2:l1">staan</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Of Godt u al goed Weer <rhyme label="b" type="f" corresp="#s2:l2">verdienden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ziet och latie, hoe <rhyme label="a" type="m">menig-maal</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ziet men Dronke drinken <rhyme label="b" type="f">gebeuren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wanneer men t’Zeyl gaat <rhyme label="a" type="m" corresp="#s3:l1">principaal</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">‘t Welke men namaals ziet <rhyme label="b" type="f" corresp="#s3:l2">betreuren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Denkt hoe haast het veranderen <rhyme label="a" type="m">kan</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Al scheynd Wind en Zee stil te <rhyme label="b" type="f">wezen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Aan het Exempel van <rhyme label="a" type="m" corresp="#s4:l1">Jonaas</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Wanneer gy zijnen Boek gaat <rhyme label="b" type="f" corresp="#s4:l2">lezen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe stil de Wind en Zee ook <rhyme label="a" type="m">was</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Als hy van Japho af <rhyme label="b" type="f">vaaren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">De Winden van Gods op dat <rhyme label="a" type="m" corresp="#s5:l1">pas</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Zeer haast verhief hem Wind en <rhyme label="b" type="f" corresp="#s5:l2">Baaren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Haastig gaf Godt een Sterren <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Zy vreesden dat het Schip zou <rhyme label="b" type="f">breeken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Elk riep tot zijnen Godt <rhyme label="a" type="m" corresp="#s6:l1">minjoot</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Godt liet haar in de nood niet <rhyme label="b" type="f" corresp="#s6:l2">steeken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hier gy Vissers <rhyme label="a" type="m">allegaar</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Wild dit dog altijd wel <rhyme label="b" type="f">gedenken</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die niet en doet Godts wil <rhyme label="a" type="m" corresp="#s7:l1">voorwaar</rhyme>;</l>
        <l id="s7:l4" met="4" type="-+">Ziet hoe haastig hy die kan <rhyme label="b" type="f" corresp="#s7:l2">krenken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Marcus aan ‘t vierde beschrijft ook <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Van een haastige Storm en <rhyme label="b" type="f">Baaren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Mattheus en Lucas zeer <rhyme label="a" type="m" corresp="#s8:l1">snel</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">In haar agtste gaat ons <rhyme label="b" type="f" corresp="#s8:l2">verklaaren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hoe dat Christus daar op het <rhyme label="a" type="m">Meer</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Al met zijn Jongeren <rhyme label="b" type="f">bekwamen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Doe hem verhief een groot <rhyme label="a" type="m" corresp="#s9:l1">Onweer</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Zo dat de Baaren raasden <rhyme label="b" type="f" corresp="#s9:l2">t’zamen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Beneen in ‘t Schip daar lag de <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Om te slapen! wild dit <rhyme label="b" type="f">bedinken</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Zijn Jongeren riepen zo <rhyme label="a" type="m" corresp="#s10:l1">meer</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Behoed ons Heer, of wy <rhyme label="b" type="f" corresp="#s10:l2">verzinken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">De Heer bestraft de Winden <rhyme label="a" type="m">daar</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Wind en Baare was straks <rhyme label="b" type="f">stille</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En daar wierd een stilte <rhyme label="a" type="m" corresp="#s11:l1">voorwaar</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Zo dat de Baare deen zijn <rhyme label="b" type="f" corresp="#s11:l2">wille</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Die altijd doen des Heeren <rhyme label="a" type="m">wil</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En zal hy immermeer <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">In Zee, nood, of ander <rhyme label="a" type="m" corresp="#s12:l1">geschil</rhyme>;</l>
        <l id="s12:l4" met="4" type="-+">Roept hem dog aan tot uwer <rhyme label="b" type="f" corresp="#s12:l2">baten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">‘t Zy wat gy in u Neering <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Doet ‘t altijd in Godes <rhyme label="b" type="f">Name</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Hy zal u dan in <rhyme label="a" type="m" corresp="#s13:l1">overvloed</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Schenken zijn zegen zeer <rhyme label="b" type="f" corresp="#s13:l2">bekwame</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Als Godt u weder brengt te <rhyme label="a" type="m">Land</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Met zijnen zegen <rhyme label="b" type="f">overvloedig</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Vergeet niet zijn goedheyd <rhyme label="a" type="m" corresp="#s14:l1">bekand</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Tot dronke drinken zijt niet <rhyme label="b" type="f" corresp="#s14:l2">spoedig</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Spoeyd u niet na de <rhyme label="a" type="m">Herreberk</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Maar veel eer vlijtelijk <rhyme label="b" type="f">t’Kerken</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Prijs daar des Heeren <rhyme label="a" type="m" corresp="#s15:l1">wonder-werk</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Het welk gy dagelijks kond <rhyme label="b" type="f" corresp="#s15:l2">merken</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Vaard wel gy Vissers <rhyme label="a" type="m">allegaar</rhyme></l>
        <l id="s16:l2" met="4" type="-+">En wild deez’ Leer dog wel <rhyme label="b" type="f">onthouwen</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Wandeld in liefde met <rhyme label="a" type="m" corresp="#s16:l1">malkaar</rhyme>:</l>
        <l id="s16:l4" met="4" type="-+">En wild altijd op hoope <rhyme label="b" type="f" corresp="#s16:l2">bouwen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Die ons dit Nieuw Lied eerst-maal <rhyme label="a" type="m">zong</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Ter eeren der Vissers <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Het was een Knaapje van Jaaren <rhyme label="a" type="m" corresp="#s17:l1">jong</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Die hem ter Zee ook ging <rhyme label="b" type="f" corresp="#s17:l2">begeven</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Doen hy dit Nieuw Lied eerst-maal <rhyme label="a" type="m">vand</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Het was in ‘t Jaar van <rhyme label="b" type="f">Zestien-honderd</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">En nog zes-maal Tien <rhyme label="a" type="m" corresp="#s18:l1">bekand</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">‘t Was op de Noord-Zee <rhyme label="b" type="f" corresp="#s18:l2">uyt-gezonderd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
