  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt was en blijft <rhyme label="a" type="m">gemeen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat twee, op 't veerst <rhyme label="a" type="m" corresp="#s1:l1">verscheen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Noch in 't end' wel worden <rhyme label="a" type="m" corresp="#s1:l1">een</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">(Een) ja soo dra, door't woortje <rhyme label="b" type="m">Ja</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Het Eerlijck <rhyme label="c" type="m">Echt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Haer in liefden t'samen <rhyme label="c" type="m" corresp="#s1:l5">hecht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dees vryen <rhyme label="a" type="m">Echten-staet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Voedt veel onheyl en <rhyme label="a" type="m" corresp="#s2:l1">quaet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Als elck tegens aer <rhyme label="a" type="m" corresp="#s2:l1">aengaet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Maer soo haer Wet, van Godt <rhyme label="b" type="m">geset</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Recht werdt <rhyme label="c" type="m">beleeft</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Sy volmaeckte vruchten <rhyme label="c" type="m" corresp="#s2:l5">geeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Geen vreught meer vreught hier <rhyme label="a" type="m">baerdt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dan soo te sijn <rhyme label="a" type="m" corresp="#s3:l1">gepaert</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat den een in d' aer <rhyme label="a" type="m" corresp="#s3:l1">vergaert</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Wanneer men beydt, van 't quade <rhyme label="b" type="m">scheydt</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">En stadigh <rhyme label="c" type="m">jaeght</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Na al 't geen dat Godt <rhyme label="c" type="m" corresp="#s3:l5">behaeght</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Eerwaerdigh is de <rhyme label="a" type="m">Vrouw</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die in voorspoet en <rhyme label="a" type="m" corresp="#s4:l1">rouw</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Blijft haer Heer en Man <rhyme label="a" type="m" corresp="#s4:l1">getrouw</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En volght Sara, dan sedigh <rhyme label="b" type="m">na</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Die heeft <rhyme label="c" type="m">betoont</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Wat een eerbaer Vrouwe <rhyme label="c" type="m" corresp="#s4:l5">kroont</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Al is de Man de <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Soo moet hy <rhyme label="a" type="m" corresp="#s5:l1">nimmermeer</rhyme></l>
        <l id="s5:l3" met="4" type="-+">'t Swacke vaetje stoten <rhyme label="a" type="m" corresp="#s5:l1">neer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Maer onder-stant, betonen, <rhyme label="b" type="m">want</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Sy is <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Nu sijn eygen vleesch en <rhyme label="c" type="m" corresp="#s5:l5">been</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick wensch, vereende <rhyme label="a" type="m">Twee</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat liefd', eendracht en <rhyme label="a" type="m" corresp="#s6:l1">vree</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">By u altoos houden <rhyme label="a" type="m" corresp="#s6:l1">stee</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Op dat verschil, noch <rhyme label="b" type="m">tegen-wil</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">V harte <rhyme label="c" type="m">naeckt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Ja veel min on-eenigh <rhyme label="c" type="m" corresp="#s6:l5">maeckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En dat uyt dese <rhyme label="a" type="m">standt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">In Edens Hof <rhyme label="a" type="m" corresp="#s7:l1">geplant</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die ghy vreughdigh slaet ter <rhyme label="a" type="m" corresp="#s7:l1">handt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Werdt voort en voort, veel deughts <rhyme label="b" type="m">bespoort</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Op dat u <rhyme label="c" type="m">plicht</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Die in duyster sit <rhyme label="c" type="m" corresp="#s7:l5">verlicht</rhyme>.</l>
      </lg>
    </lg>
  </text>
