    <melody>Corydon zucht nacht en dag</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VVIe Loopt me daer met sulcke <rhyme label="a" type="m">spoet</rhyme>?</l>
        <l id="s1:l2" met="4" type="-+">Haer aenschyn is gelyck vol <rhyme label="a" type="m" corresp="#s1:l1">bloet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Onsteken als <rhyme label="b" type="f">Scharlaken</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">My dunckt zy is de <rhyme label="c" type="m">Bruydt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">My dunckt zy is de <rhyme label="c" type="m" corresp="#s1:l4">Bruydt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ja z'is; Zy wilt te werelt <rhyme label="c" type="m" corresp="#s1:l4">uyt</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Hoe salz' er uyt <rhyme label="b" type="f" corresp="#s1:l3">geraken</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat datze loopt, men volchtze <rhyme label="a" type="m">noch</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Zy heyghter af: waer salze <rhyme label="a" type="m" corresp="#s2:l1">toch</rhyme></l>
        <l id="s2:l3" met="3" type="-+">De lavenisse <rhyme label="b" type="f">vinden</rhyme>?</l>
        <l id="s2:l4" met="3" type="-+">Joanna hebde <rhyme label="c" type="m">dorst</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Joanna hebde <rhyme label="c" type="m" corresp="#s2:l4">dorst</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Rust met Joannes op de <rhyme label="c" type="m" corresp="#s2:l4">Borst</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Van den lieve <rhyme label="b" type="f" corresp="#s2:l3">Beminden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Smaeckt hier de vrucht, proeft hier de <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En suyght wat datge suygen <rhyme label="a" type="m" corresp="#s3:l1">meught</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Wat siede naer de <rhyme label="b" type="f">Beken</rhyme>?</l>
        <l id="s3:l4" met="3" type="-+">Soeckt liever de <rhyme label="c" type="m">fonteyn</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Soeckt liever de <rhyme label="c" type="m" corresp="#s3:l4">fonteyn</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dan Beken, die vol modder <rhyme label="c" type="m" corresp="#s3:l4">syn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Vol troubbel water <rhyme label="b" type="f" corresp="#s3:l3">steken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dat water en is nieuwers <rhyme label="a" type="m">nut</rhyme>;</l>
        <l id="s4:l2" met="4" type="-+">Blyft Dochter blyft by Jacobs <rhyme label="a" type="m" corresp="#s4:l1">put</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Waer Christus levend' <rhyme label="b" type="f">water</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Waer Christus levend' <rhyme label="c" type="m">water</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Voor eenen erme <rhyme label="c" type="m" corresp="#s4:l4">dronck</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Aen de Samaritane <rhyme label="c" type="m" corresp="#s4:l4">schonck</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">De werelt datze <rhyme label="b" type="f" corresp="#s4:l3">tater</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Syn alle Creaturen <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Veel beter, dieze leven <rhyme label="a" type="m" corresp="#s5:l1">doet</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Ah? dese leeghe <rhyme label="b" type="f">saken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En sullen u <rhyme label="c" type="m">voorwaer</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">En sullen u <rhyme label="c" type="m" corresp="#s5:l4">voorwaer</rhyme>.</l>
        <l id="s5:l6" met="4" type="-+">Al leefde ghy noch dusend' <rhyme label="c" type="m" corresp="#s5:l4">jaer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Noyt saligh konnen <rhyme label="b" type="f" corresp="#s5:l3">maken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En draeght u haer getier niet <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Maer blyft in u voornemen <rhyme label="a" type="m" corresp="#s6:l1">staen</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Nu vrinden, nu gaet <rhyme label="b" type="f">henen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En quelt haer toch niet <rhyme label="c" type="m">meer</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">En quelt haer toch niet <rhyme label="c" type="m" corresp="#s6:l4">meer</rhyme>:</l>
        <l id="s6:l6" met="4" type="-+">Zy rust in onse lieven <rhyme label="c" type="m" corresp="#s6:l4">Heer</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Haer maeghschap is <rhyme label="b" type="f" corresp="#s6:l3">verdwenen</rhyme>.</l>
      </lg>
    </lg>
  </text>
