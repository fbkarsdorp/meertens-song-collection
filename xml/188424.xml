  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ik dryfvolangsten harten <rhyme label="a" type="m">wee</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">In 't midden der <rhyme label="b" type="f">gevaren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Langs de ongestuime <rhyme label="b" type="f" corresp="#s1:l2">baren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Der holle Liefde <rhyme label="a" type="m" corresp="#s1:l1">Zee</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Waer zal ik toch <rhyme label="c" type="f">belanden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Na zulk een min <rhyme label="d" type="m">orkaen</rhyme>?</l>
        <l id="s1:l7" met="3" type="-+">Myn Liefde kiel zal <rhyme label="c" type="f" corresp="#s1:l5">stranden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En los ten gronde <rhyme label="d" type="m" corresp="#s1:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De dolle wind van rampspoed <rhyme label="a" type="m">slaet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Het Zeil van hoop aen <rhyme label="b" type="f">flarden</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Ik kan't niet langer <rhyme label="b" type="f" corresp="#s2:l2">harden</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Geen anker geeft my <rhyme label="a" type="m" corresp="#s2:l1">baet</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Ik voel de Geessel <rhyme label="c" type="f">striemen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Van't naedrend <rhyme label="d" type="m">ongeluk</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Myn zuchten zyn myn <rhyme label="c" type="f" corresp="#s2:l5">riemen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Een zwakke troost in <rhyme label="d" type="m" corresp="#s2:l6">druk</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ik zie, Helaes geen enkle <rhyme label="a" type="m">strael</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van vreugd of blydschap <rhyme label="b" type="f">blinken</rhyme>!</l>
        <l id="s3:l3" met="3" type="-+">Myn Luk-zon is aen 't <rhyme label="b" type="f" corresp="#s3:l2">zinken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wyl ik ten afgrond <rhyme label="a" type="m" corresp="#s3:l1">dael</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Verdryf myn <rhyme label="c" type="f">tegenspoeden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Volmaekte <rhyme label="d" type="m">Rozelyn</rhyme>!</l>
        <l id="s3:l7" met="3" type="-+">Gy kunt my nog <rhyme label="c" type="f" corresp="#s3:l5">behoeden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Wilt gy myn Noord-star <rhyme label="d" type="m" corresp="#s3:l6">zyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
