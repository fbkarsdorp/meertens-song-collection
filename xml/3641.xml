  <author>Pieter Datheen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WILT in uwen toorn <rhyme label="a" type="f">ghestaedigh</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Heer <rhyme label="a" type="f" corresp="#s1:l1">ge-naedigh</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">My doch straffen niet so <rhyme label="b" type="m">seer</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Die hitt' uwes toorns wilt <rhyme label="c" type="f">keeren</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Van my <rhyme label="c" type="f" corresp="#s1:l4">Heere</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die nu gaer swack ben end <rhyme label="b" type="m" corresp="#s1:l3">teer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want v pylen hart <rhyme label="a" type="f">gedreuen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">In my <rhyme label="a" type="f" corresp="#s2:l1">kleuen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Seer styf end diepe <rhyme label="b" type="m">voorwaer</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Ghy wilt dat ick oock sal <rhyme label="c" type="f">lyden</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Dat <rhyme label="c" type="f" corresp="#s2:l4">castyden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Vwer handt die my druckt <rhyme label="b" type="m" corresp="#s2:l3">swaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Myn lyf is vol <rhyme label="a" type="f">ongesonden</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Nu <rhyme label="a" type="f" corresp="#s3:l1">beuonden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Doer uwen toorne seer <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Geen rust' en hebben myn <rhyme label="c" type="f">beenen</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Al met <rhyme label="c" type="f" corresp="#s3:l4">eenen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Van weghen myn sonden <rhyme label="b" type="m" corresp="#s3:l3">bloot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want die straffe myner <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Niet om <rhyme label="a" type="f" corresp="#s4:l1">gronden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Seer swaer ouer myn hooft <rhyme label="b" type="m">gaet</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Als een last seer swaer om <rhyme label="c" type="f">draeghen</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">T'allen <rhyme label="c" type="f" corresp="#s4:l4">daeghen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Werdt sy meerder met der <rhyme label="b" type="m" corresp="#s4:l3">daet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Myn wonden my seer <rhyme label="a" type="f">vermoeyen</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Die daer <rhyme label="a" type="f" corresp="#s5:l1">vloeyen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Van etter stanck end <rhyme label="b" type="m">gebloet</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Doer myn dwaesheit niet om <rhyme label="c" type="f">sommen</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Is my <rhyme label="c" type="f" corresp="#s5:l4">kommen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Dit verderf end <rhyme label="b" type="m" corresp="#s5:l3">teghenspoedt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Myn lyden my so hart <rhyme label="a" type="f">drucket</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Dat <rhyme label="a" type="f" corresp="#s6:l1">ghebucket</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ick nu ben, jae oock gantsch <rhyme label="b" type="m">krom</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Ick moet truerigh end <rhyme label="c" type="f">verslaeghen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">In myn <rhyme label="c" type="f" corresp="#s6:l4">klaeghen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Den gheheelen dagh gaen <rhyme label="b" type="m" corresp="#s6:l3">om</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Want verdorret t allen <rhyme label="a" type="f">steden</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Sijn myn <rhyme label="a" type="f" corresp="#s7:l1">leden</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Doer t'cruys dat my t'hert' <rhyme label="b" type="m">doersnijdt</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">In my is niet ghesondes <rhyme label="c" type="f">bleuen</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Want myn <rhyme label="c" type="f" corresp="#s7:l4">leuen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Is vol lydens t'aller <rhyme label="b" type="m" corresp="#s7:l3">tijdt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ick die wacker plagh te <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Ben midts <rhyme label="a" type="f" corresp="#s8:l1">desen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Gaer ghebroken matt end <rhyme label="b" type="m">kranck</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">So dat ick doer t'cruys myns <rhyme label="c" type="f">herten</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Vol van <rhyme label="c" type="f" corresp="#s8:l4">smerten</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Schreye gantsche daeghen <rhyme label="b" type="m" corresp="#s8:l3">lanck</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Myn beghÄ™erten Heere <rhyme label="a" type="f">krachtigh</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">End <rhyme label="a" type="f" corresp="#s9:l1">almachtigh</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Sijn voor v gantsch <rhyme label="b" type="m">openbaer</rhyme>.</l>
        <l id="s9:l4" met="4" type="+-">Al myn suchten end <rhyme label="c" type="f">ghedachten</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">End myn <rhyme label="c" type="f" corresp="#s9:l4">klachten</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Sijn voor v bloot ende <rhyme label="b" type="m" corresp="#s9:l3">klaer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Myn herte beeft met <rhyme label="a" type="f">vertzaeghen</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Seer <rhyme label="a" type="f" corresp="#s10:l1">verslaeghen</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Sijn myn krachten in't <rhyme label="b" type="m">ghemeyn</rhyme>.</l>
        <l id="s10:l4" met="4" type="+-">End my is (dies ick moet <rhyme label="c" type="f">schromen</rhyme>)</l>
        <l id="s10:l5" met="2" type="+-">Gantsch <rhyme label="c" type="f" corresp="#s10:l4">ontnomen</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">T'ghesicht myner ooghen <rhyme label="b" type="m" corresp="#s10:l3">reyn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Myn vrienden die gaen ter <rhyme label="a" type="f">zyden</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">End myn <rhyme label="a" type="f" corresp="#s11:l1">lyden</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Sien se onbarmhertich <rhyme label="b" type="m">aen</rhyme>.</l>
        <l id="s11:l4" met="4" type="+-">Ende die my sijn die <rhyme label="c" type="f">naeste</rhyme>,</l>
        <l id="s11:l5" met="2" type="+-">Met der <rhyme label="c" type="f" corresp="#s11:l4">haeste</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Wijdt van my treden end <rhyme label="b" type="m" corresp="#s11:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Sy die myn siel' netten <rhyme label="a" type="f">stellen</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">End my <rhyme label="a" type="f" corresp="#s12:l1">quellen</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Met hen die my gonnen <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Dencken om my te <rhyme label="c" type="f">beschaemen</rhyme>,</l>
        <l id="s12:l5" met="2" type="+-">End al <rhyme label="c" type="f" corresp="#s12:l4">t'saemen</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Houden teghen my den <rhyme label="b" type="m" corresp="#s12:l3">raedt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">End ick als die niet kan <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">Stae daer <rhyme label="a" type="f" corresp="#s13:l1">vooren</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Daer se teghen my <rhyme label="b" type="m">raedslaen</rhyme>.</l>
        <l id="s13:l4" met="4" type="+-">Ick ben gaer stom tot dees <rhyme label="c" type="f">stonde</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-">Wt den <rhyme label="c" type="f" corresp="#s13:l4">monde</rhyme></l>
        <l id="s13:l6" met="4" type="+-">En laet' ick gheen woort <rhyme label="b" type="m" corresp="#s13:l3">ontgaen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Ick ben gheworden als <rhyme label="a" type="f">eene</rhyme>,</l>
        <l id="s14:l2" met="2" type="+-">Die gantsch <rhyme label="a" type="f" corresp="#s14:l1">gheene</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Spraeke, noch gheen gehoor <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Als een die sijnde <rhyme label="c" type="f">versteken</rhyme>,</l>
        <l id="s14:l5" met="2" type="+-">Niet kan <rhyme label="c" type="f" corresp="#s14:l4">spreken</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">End geen <rhyme label="b" type="m" corresp="#s14:l3">verantwoordingh'geeft</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Maer ick wil Heer op v <rhyme label="a" type="f">bauwen</rhyme>,</l>
        <l id="s15:l2" met="2" type="+-">Myn <rhyme label="a" type="f" corresp="#s15:l1">vertrauwen</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">End wachten uwen <rhyme label="b" type="m">bystandt</rhyme>.</l>
        <l id="s15:l4" met="4" type="+-">Ghy sult oock myn Godt <rhyme label="c" type="f">verkoren</rhyme>,</l>
        <l id="s15:l5" met="2" type="+-">My <rhyme label="c" type="f" corresp="#s15:l4">verhooren</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">End my bieden uwe <rhyme label="b" type="m" corresp="#s15:l3">handt</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Ick bidd' v laet niet <rhyme label="a" type="f">verblijden</rhyme>,</l>
        <l id="s16:l2" met="2" type="+-">In myn <rhyme label="a" type="f" corresp="#s16:l1">lyden</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Hen die my haeten seer <rhyme label="b" type="m">wreedt</rhyme>.</l>
        <l id="s16:l4" met="4" type="+-">Want als myne voeten <rhyme label="c" type="f">glyden</rhyme>,</l>
        <l id="s16:l5" met="2" type="+-">Wat <rhyme label="c" type="f" corresp="#s16:l4">bezyden</rhyme>,</l>
        <l id="s16:l6" met="4" type="+-">Sy verheughen in myn <rhyme label="b" type="m" corresp="#s16:l3">leedt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Wilt helpen o Heere <rhyme label="a" type="f">krachtigh</rhyme>,</l>
        <l id="s17:l2" met="2" type="+-">My die <rhyme label="a" type="f" corresp="#s17:l1">klachtigh</rhyme></l>
        <l id="s17:l3" met="4" type="+-">Ben, end tot lyden <rhyme label="b" type="m">gemaeckt</rhyme>.</l>
        <l id="s17:l4" met="4" type="+-">Ghestaedelick is myn <rhyme label="c" type="f">herte</rhyme></l>
        <l id="s17:l5" met="2" type="+-">Vol van <rhyme label="c" type="f" corresp="#s17:l4">smerte</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">Daer met ghy my hebt <rhyme label="b" type="m" corresp="#s17:l3">gheraeckt</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Met schaemten ick my seer <rhyme label="a" type="f">quelle</rhyme></l>
        <l id="s18:l2" met="2" type="+-">End <rhyme label="a" type="f" corresp="#s18:l1">vertelle</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Myne seer groote <rhyme label="b" type="m">misdaedt</rhyme>.</l>
        <l id="s18:l4" met="4" type="+-">Ick en doe niet dan <rhyme label="c" type="f">beklaeghen</rhyme>,</l>
        <l id="s18:l5" met="2" type="+-">Al myn <rhyme label="c" type="f" corresp="#s18:l4">daeghen</rhyme>,</l>
        <l id="s18:l6" met="4" type="+-">Al myne swaere sonden <rhyme label="b" type="m" corresp="#s18:l3">quaedt</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Myn vianden sijn ben <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s19:l2" met="2" type="+-"><rhyme label="a" type="f" corresp="#s19:l1">Hoogh'ghepresen</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">End leuen in eer' end <rhyme label="b" type="m">pracht</rhyme>.</l>
        <l id="s19:l4" met="4" type="+-">Die my haeten end <rhyme label="c" type="f">aenuechten</rhyme>,</l>
        <l id="s19:l5" met="2" type="+-">Gantsch <rhyme label="c" type="f" corresp="#s19:l4">t'onrechten</rhyme>,</l>
        <l id="s19:l6" met="4" type="+-">Wassen in ghetal end <rhyme label="b" type="m" corresp="#s19:l3">kracht</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Sy al teghen my hen <rhyme label="a" type="f">stelden</rhyme>,</l>
        <l id="s20:l2" met="2" type="+-">End <rhyme label="a" type="f" corresp="#s20:l1">vergelden</rhyme></l>
        <l id="s20:l3" met="4" type="+-">Met quaet doen alle myn <rhyme label="b" type="m">dueghd</rhyme>.</l>
        <l id="s20:l4" met="4" type="+-">Daerom is't dat se my <rhyme label="c" type="f">smaeden</rhyme>,</l>
        <l id="s20:l5" met="2" type="+-">End <rhyme label="c" type="f" corresp="#s20:l4">belaeden</rhyme>,</l>
        <l id="s20:l6" met="4" type="+-">Om dat ick recht doe met <rhyme label="b" type="m" corresp="#s20:l3">vreughd</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Wilt my Heer in sulcker <rhyme label="a" type="f">maeten</rhyme>,</l>
        <l id="s21:l2" met="2" type="+-">Niet <rhyme label="a" type="f" corresp="#s21:l1">verlaeten</rhyme>,</l>
        <l id="s21:l3" met="4" type="+-">Die van jeghlick ben <rhyme label="b" type="m">veracht</rhyme>.</l>
        <l id="s21:l4" met="4" type="+-">Dat van my v' goedtheit <rhyme label="c" type="f">rycke</rhyme>,</l>
        <l id="s21:l5" met="2" type="+-">Niet en <rhyme label="c" type="f" corresp="#s21:l4">wycke</rhyme>,</l>
        <l id="s21:l6" met="4" type="+-">Want myn hert' Heer v' <rhyme label="b" type="m" corresp="#s21:l3">verwacht</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Komt Heer, wilt v by my <rhyme label="a" type="f">maeken</rhyme>,</l>
        <l id="s22:l2" met="2" type="+-">In myn <rhyme label="a" type="f" corresp="#s22:l1">saeken</rhyme>,</l>
        <l id="s22:l3" met="4" type="+-">Tot myn hulp' v goedtlick <rhyme label="b" type="m">wendt</rhyme>.</l>
        <l id="s22:l4" met="4" type="+-">Haest v tot mynen <rhyme label="c" type="f">bystande</rhyme>,</l>
        <l id="s22:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s22:l4">Goederhande</rhyme>,</l>
        <l id="s22:l6" met="4" type="+-">Ghy die myn heyl sijt <rhyme label="b" type="m" corresp="#s22:l3">bekent</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
