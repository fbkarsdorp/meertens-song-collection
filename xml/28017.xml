  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">NU ik denk aan myn <rhyme label="a" type="m">Margo</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Word ik <rhyme label="a" type="m" corresp="#s1:l1">zoo</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Lugtig als een bosje <rhyme label="a" type="m" corresp="#s1:l1">stroo</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat het vuur begint te <rhyme label="b" type="f">voelen</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Maar ik <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">In myn <rhyme label="c" type="m" corresp="#s1:l5">bloed</rhyme></l>
        <l id="s1:l7" met="2" type="+-">Die brand <rhyme label="b" type="f" corresp="#s1:l4">verkoelen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dat is wonderlyk en <rhyme label="a" type="m">raar</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Is 't niet <rhyme label="a" type="m" corresp="#s2:l1">waar</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">De eene brand verkoelt den <rhyme label="a" type="m" corresp="#s2:l1">aar</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Want ik heb nog naau <rhyme label="b" type="f">gedronken</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Of ik <rhyme label="c" type="m">voel</rhyme></l>
        <l id="s2:l6" met="2" type="-+">WeÃªr <rhyme label="c" type="m" corresp="#s2:l5">krioel</rhyme></l>
        <l id="s2:l7" met="2" type="+-">Van <rhyme label="b" type="f" corresp="#s2:l4">minnevonken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maar hoe bruyje my nou <rhyme label="a" type="m">zoo</rhyme></l>
        <l id="s3:l2" met="2" type="+-"><rhyme label="a" type="m" corresp="#s3:l1">Kupido</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Gaa dog eens by myn <rhyme label="a" type="m" corresp="#s3:l1">Margo</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Doet uw pylen in haar <rhyme label="b" type="f">zinken</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Zoo <rhyme label="c" type="m">zalik</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">In myn <rhyme label="c" type="m" corresp="#s3:l5">schik</rhyme>,</l>
        <l id="s3:l7" met="2" type="+-">Uw welvaart <rhyme label="b" type="f" corresp="#s3:l4">drinken</rhyme>.</l>
      </lg>
    </lg>
