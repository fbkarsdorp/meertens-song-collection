    <melody>Als ons de winter gaat van heen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ter eeren van Godts Namee <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Laet ons singhen een <rhyme label="b" type="m">Liedt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Voor hem verschijnen met <rhyme label="a" type="m" corresp="#s1:l1">ootmoedt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Soo Christus Iesus <rhyme label="b" type="m" corresp="#s1:l2">riedt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Nu wy zondigh beladen <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Soo laet ons doch nu <rhyme label="d" type="f">soecken</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Sijn lieffelijck <rhyme label="c" type="m" corresp="#s1:l5">aenschijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Rechte ootmoet heeft hy <rhyme label="a" type="m">gheleert</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die voor gheganghen <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En wie ontlast te zijn <rhyme label="a" type="m" corresp="#s2:l1">begheert</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Moet hem volghen <rhyme label="b" type="m" corresp="#s2:l2">ghewis</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Den goeden wil ons Heere <rhyme label="c" type="m">gheeft</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat hy ons mach <rhyme label="d" type="f">gheleyden</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Daer men ootmoedigh <rhyme label="c" type="m" corresp="#s2:l5">leeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Iae als wy daer nu kloppen <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En d’open doen <rhyme label="b" type="m">verbeyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Tot dat wy sulen binnen <rhyme label="a" type="m" corresp="#s3:l1">gaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gheeft ons <rhyme label="b" type="m" corresp="#s3:l2">lanckmoedigheyt</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">U vreese in ons herdt <rhyme label="c" type="m">verweckt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Tot wy ‘t ootmoedigh <rhyme label="d" type="f">wesen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Bevinden gantsch <rhyme label="c" type="m" corresp="#s3:l5">perfeckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Niet achten al ‘t gheen datmen <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En schouwen ydel <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Oock eyghen liefde achten <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En ons stellen ter <rhyme label="b" type="m" corresp="#s4:l2">weer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Voor haer inkomen met <rhyme label="c" type="m">ghedruys</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat sy ‘t goedt niet en <rhyme label="d" type="f">verteere</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">In het ootmoedigh <rhyme label="c" type="m" corresp="#s4:l5">huys</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Alsoo gheeft ons te zijn <rhyme label="a" type="m">gherust</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Om gheern te zijn <rhyme label="b" type="m">versmaet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Te versmaden des Werelts <rhyme label="a" type="m" corresp="#s5:l1">lust</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met allen haren <rhyme label="b" type="m" corresp="#s5:l2">staet</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Maer liefde tot u in ons <rhyme label="c" type="m">volmaeckt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Tot dat wy gantsch <rhyme label="d" type="f">ootmoedigh</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Zijn in u huys <rhyme label="c" type="m" corresp="#s5:l5">gheraeckt</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Rechte kennisse gheeft ons <rhyme label="a" type="m">doch</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Leert ons aenmercken <rhyme label="b" type="m">slecht</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer toe lief Heere, gheeft ons <rhyme label="a" type="m" corresp="#s6:l1">noch</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Uwe wijsheyt te <rhyme label="b" type="m" corresp="#s6:l2">recht</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Dat wy bekennen <rhyme label="c" type="m">openbaer</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Dat wy zijn ende <rhyme label="d" type="f">waren</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En oock worden hier <rhyme label="c" type="m" corresp="#s6:l5">naer</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Iae ghedencken <rhyme label="a" type="m">ghestadelijck</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Aen u liefde <rhyme label="b" type="m">altijt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Helpt ons doch Heer <rhyme label="a" type="m" corresp="#s7:l1">ghenadelijck</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Nu uyt-voeren den <rhyme label="b" type="m" corresp="#s7:l2">strijdt</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">Teghen ‘t hooghvaerdigh wesen <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En het hooghmoedigh <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dat ons bestrijden <rhyme label="c" type="m" corresp="#s7:l5">gaet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Alle lusten des svleeschs uyt <rhyme label="a" type="m">blust</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Wat ons wort <rhyme label="b" type="m">voor-ghestelt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En onsen ooghen hier <rhyme label="a" type="m" corresp="#s8:l1">ghelust</rhyme></l>
        <l id="s8:l4" met="3" type="-+">En ons daghelijcks <rhyme label="b" type="m" corresp="#s8:l2">quelt</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Verghetelheyt en boosheyts <rhyme label="c" type="m">daet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Neemt traegheyt van ons <rhyme label="d" type="f">Heere</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">t’Samen met nijdt en <rhyme label="c" type="m" corresp="#s8:l5">haet</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Noch het quaet vermoeden en <rhyme label="a" type="m">laet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">In ons blijven niet <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Voor valsch Oordeel en quaden <rhyme label="a" type="m" corresp="#s9:l1">raet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Bewaert ons lieve <rhyme label="b" type="m" corresp="#s9:l2">Heer</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Voor Toorne en quaet doen <rhyme label="c" type="m">bereyt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Vrijdt ons, maer wilt ons <rhyme label="d" type="f">voeren</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Totter <rhyme label="c" type="m" corresp="#s9:l5">ootmoedigheyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Zaligheyt komt van u <rhyme label="a" type="m">alleyn</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Ghy zijt die ons <rhyme label="b" type="m">gheneest</rhyme></l>
        <l id="s10:l3" met="4" type="-+">O ghy verquickende <rhyme label="a" type="m" corresp="#s10:l1">Fonteyn</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Onser ghenadigh <rhyme label="b" type="m" corresp="#s10:l2">weest</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Den goeden Gheest doch in ons <rhyme label="c" type="m">sent</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Dat hy ons mach <rhyme label="d" type="f">gheleyden</rhyme></l>
        <l id="s10:l7" met="3" type="-+">In ‘t Hemelsche <rhyme label="c" type="m" corresp="#s10:l5">Convent</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
