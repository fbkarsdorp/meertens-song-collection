    <melody>Psalm 035 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">TWISTT Heer met myn twisters vol <rhyme label="a" type="m">pracht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Myn bestryders bestrydt met <rhyme label="a" type="m" corresp="#s1:l1">kracht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Grypt den schildt end waepen in <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Maeckt v op tot mynen <rhyme label="b" type="f" corresp="#s1:l3">bystande</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Treckt dat swęerdt wt, Voor my nu <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Hinderts' end' hen doch <rhyme label="c" type="m" corresp="#s1:l5">wederstaet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Spreeckt tot myn siel, Ick ben't <rhyme label="d" type="m">alleen</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Die v bewaert end anders <rhyme label="d" type="m" corresp="#s1:l7">gheen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dat se schaemroodt sijn end <rhyme label="a" type="m">verbaest</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Versloeghen end vol schanden <rhyme label="a" type="m" corresp="#s2:l1">haest</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sy die altyt staen nae myn <rhyme label="b" type="f">leuen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">End my benauwen daer <rhyme label="b" type="f" corresp="#s2:l3">beneuen</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Dat se werden ghelyck dat <rhyme label="c" type="m">sandt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dat de windt snel drijft ouer <rhyme label="c" type="m" corresp="#s2:l5">t'landt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Gods Enghel moetse jaeghen <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">End' haestelick bringen ten <rhyme label="d" type="m" corresp="#s2:l7">val</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Haer wegh sij glat in't eerdsche <rhyme label="a" type="m">dal</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Doer weghen duyster ende <rhyme label="a" type="m" corresp="#s3:l1">smal</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Moet se Godts enghel steeds <rhyme label="b" type="f">naejaegen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">End sonder ophouden seer <rhyme label="b" type="f" corresp="#s3:l3">plaegen</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Om dats' hebben my seer <rhyme label="c" type="m">gequelt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">End' heymelick netten <rhyme label="c" type="m" corresp="#s3:l5">gestelt</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Iae sonder oorsaeck' <rhyme label="d" type="m">toegeleyt</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Om my te dooden met <rhyme label="d" type="m" corresp="#s3:l7">wreedtheit</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Onuersiens sij de mensche <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Oueruallen met schand' end <rhyme label="a" type="m" corresp="#s4:l1">smaet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Sijn voeten in't strick moeten <rhyme label="b" type="f">hangen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Daermed' hy my meynde te <rhyme label="b" type="f" corresp="#s4:l3">vangen</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Doet hem doch in den kuyl <rhyme label="c" type="m">vergaen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dien hy my te graeuen vanght <rhyme label="c" type="m" corresp="#s4:l5">aen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Dan werdt myn siel in Godt <rhyme label="d" type="m">verblijdt</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Diese bewaert heeft t'aller <rhyme label="d" type="m" corresp="#s4:l7">tijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dan sullen myn beenen <rhyme label="a" type="m">vroylick</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Seggen: Heer wie is v <rhyme label="a" type="m" corresp="#s5:l1">gelyck</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die den swacken (so elck kan <rhyme label="b" type="f">mercken</rhyme>)</l>
        <l id="s5:l4" met="4" type="-+">Bevrijdt van dat gewelt der <rhyme label="b" type="f" corresp="#s5:l3">stercken</rhyme>?</l>
        <l id="s5:l5" met="4" type="-+">Den elenden ghy oock <rhyme label="c" type="m">bewaert</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Dat hem die boose niet <rhyme label="c" type="m" corresp="#s5:l5">beswaert</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Valsch' ghetuygen seggen my <rhyme label="d" type="m">aen</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Dat ick noyt en hebbe <rhyme label="d" type="m" corresp="#s5:l7">begaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Voor goet hebben se quaet <rhyme label="a" type="m">gedaen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">End nae myn leuen oock <rhyme label="a" type="m" corresp="#s6:l1">gestaen</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Maer sy met cruys sijnde <rhyme label="b" type="f">geslaegen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Ick heb' met vasten leedt <rhyme label="b" type="f" corresp="#s6:l3">gedraegen</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Voor hen hebb' ick wt s'herten <rhyme label="c" type="m">grondt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">V Heer ghebeden t'elcker <rhyme label="c" type="m" corresp="#s6:l5">stondt</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Voor hen Heer sorghd' al myn <rhyme label="d" type="m">gemoedt</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Als voor een vriendt end broeder <rhyme label="d" type="m" corresp="#s6:l7">goet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ick was bedroeft ende <rhyme label="a" type="m">vertzaeght</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Als die ouer sijn moeder <rhyme label="a" type="m" corresp="#s7:l1">klaeght</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Maer als se hoorden van myn <rhyme label="b" type="f">lijden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Se loughen te saem met <rhyme label="b" type="f" corresp="#s7:l3">verblijden</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Die ęrghste menschen die ick <rhyme label="c" type="m">weet</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Sijn my teghen met listen <rhyme label="c" type="m" corresp="#s7:l5">wreet</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Sonder schuldt ben ick Heer <rhyme label="d" type="m">veracht</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Voor hen allen, dagh ende <rhyme label="d" type="m" corresp="#s7:l7">nacht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die spotters end vleyers met <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Byten t'saem haer tanden <rhyme label="a" type="m" corresp="#s8:l1">ghemeen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Met de brassers op my <rhyme label="b" type="f">veruolghen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die gern de goed' tafelen <rhyme label="b" type="f" corresp="#s8:l3">volgen</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Maeckt v op Heer, niet langher <rhyme label="c" type="m">wacht</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Verlost myn siel', hebt op my <rhyme label="c" type="m" corresp="#s8:l5">acht</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Myn siel wt den angst treckt doch <rhyme label="d" type="m">snel</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Bevrydt die voor den Leeuwen <rhyme label="d" type="m" corresp="#s8:l7">fel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dan sal v dancken myn hert <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">In't midden uwes volcks <rhyme label="a" type="m" corresp="#s9:l1">ghemeyn</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">By v volck sal ick v Heer <rhyme label="b" type="f">prysen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">End v altyt eere <rhyme label="b" type="f" corresp="#s9:l3">bewysen</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Gheeft hen gheen oorsaeck' uwen <rhyme label="c" type="m">knecht</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Te bespotten: Want met <rhyme label="c" type="m" corresp="#s9:l5">onrecht</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Haeten se my, end vol van <rhyme label="d" type="m">nijdt</rhyme></l>
        <l id="s9:l8" met="4" type="-+">Wencken se my wt smaet end <rhyme label="d" type="m" corresp="#s9:l7">spijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Sy spreken noch dencken gantsch <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dan op twist schaed' ende <rhyme label="a" type="m" corresp="#s10:l1">verdriet</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">End hoe se my die niet ben <rhyme label="b" type="f">twistigh</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Sullen konnen bedrieghen <rhyme label="b" type="f" corresp="#s10:l3">listigh</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">My te spotten tot deser <rhyme label="c" type="m">stondt</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Doen se t'saem open haeren <rhyme label="c" type="m" corresp="#s10:l5">mondt</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Met lachen roepen se my <rhyme label="d" type="m">naer</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">Ha ha, siet den schalck, hy is <rhyme label="d" type="m" corresp="#s10:l7">daer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Heer ghy die deser doen wel <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Laet doch dit so voorby gaen <rhyme label="a" type="m" corresp="#s11:l1">niet</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Wilt v van my nit verre <rhyme label="b" type="f">maeken</rhyme>:</l>
        <l id="s11:l4" met="4" type="-+">Maer om te rechten myne <rhyme label="b" type="f" corresp="#s11:l3">saeken</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Maeckt v op Heer met groote <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">My recht te doen sijt doch <rhyme label="c" type="m" corresp="#s11:l5">bedacht</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Op dat nemmermer verblijdt <rhyme label="d" type="m">sijn</rhyme>,</l>
        <l id="s11:l8" met="4" type="-+">Ouer my die vianden <rhyme label="d" type="m" corresp="#s11:l7">myn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Op dat se niet segghen met <rhyme label="a" type="m">vrueghd</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Welaen, sijt goetsmoedts end <rhyme label="a" type="m" corresp="#s12:l1">verhueght</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Hy is vergaen: Want se my <rhyme label="b" type="f">smaeden</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">End verblijden in myne <rhyme label="b" type="f" corresp="#s12:l3">schaeden</rhyme>.</l>
        <l id="s12:l5" met="4" type="-+">Laett se wesen vol van <rhyme label="c" type="m">oneer</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Die in myn cruys verblyden <rhyme label="c" type="m" corresp="#s12:l5">seer</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Laett se met schanden sijn <rhyme label="d" type="m">bekleedt</rhyme>,</l>
        <l id="s12:l8" met="4" type="-+">Die hen teghen my stellen <rhyme label="d" type="m" corresp="#s12:l7">wreet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Maer laett hen eerlick sijn <rhyme label="a" type="m">verblydt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Die my goet wenschen t'aller <rhyme label="a" type="m" corresp="#s13:l1">tydt</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Dat se met vrueghd prysen end <rhyme label="b" type="f">singen</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Vwe macht end den lof <rhyme label="b" type="f" corresp="#s13:l3">voortbringhen</rhyme>.</l>
        <l id="s13:l5" met="4" type="-+">Van v Heer, die uwen knecht <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">In vrede leuen met <rhyme label="c" type="m" corresp="#s13:l5">voorspoedt</rhyme>:</l>
        <l id="s13:l7" met="4" type="-+">So sal myn tongh' uwe <rhyme label="d" type="m">goedtheit</rhyme>,</l>
        <l id="s13:l8" met="4" type="-+">Altyt singhen in <rhyme label="d" type="m" corresp="#s13:l7">eewicheit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
