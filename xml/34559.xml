  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OM my naer u te <rhyme label="a" type="f">voegen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Verbergh ick myne <rhyme label="b" type="m">pyn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Doch Phillis myn <rhyme label="a" type="f" corresp="#s1:l1">misnoegen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Heeft door myn oogen <rhyme label="b" type="m" corresp="#s1:l2">schyn</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Wt deze kan-men <rhyme label="c" type="f">lesen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat ick verberghen <rhyme label="d" type="m">wil</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En staet myn tonghe <rhyme label="d" type="m" corresp="#s1:l6">stil</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Soo spreeckt veel meer myn <rhyme label="c" type="f" corresp="#s1:l5">wesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Siet Beeldtjen, wiens <rhyme label="a" type="f">zeden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Veroorsaken myn <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Merckt uyt myn stomme <rhyme label="a" type="f" corresp="#s2:l1">reden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Myn zieltjens hooghsten <rhyme label="b" type="m" corresp="#s2:l2">noodt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wt dese kan-men <rhyme label="c" type="f">lesen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat ick verberghen <rhyme label="d" type="m">wil</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Want staet myn tonghe <rhyme label="d" type="m" corresp="#s2:l6">stil</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Soo spreeckt veel meer myn <rhyme label="c" type="f" corresp="#s2:l5">wesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het uyterst' van myn <rhyme label="a" type="f">smerten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ontstaet door u <rhyme label="b" type="m">ghebodt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En 'k vondt my licht van <rhyme label="a" type="f" corresp="#s3:l1">herten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Brocht ghy my uyt dit <rhyme label="b" type="m" corresp="#s3:l2">slot</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Men kander doch uyt <rhyme label="c" type="f">lesen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Dat ick verberghen <rhyme label="d" type="m">wil</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Want staet myn tonghe <rhyme label="d" type="m" corresp="#s3:l6">stil</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Soo spreeckt veel meer myn <rhyme label="c" type="f" corresp="#s3:l5">wesen</rhyme>.</l>
      </lg>
    </lg>
