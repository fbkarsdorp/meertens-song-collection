  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">'Ic lide soe groet <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O lieve Here <rhyme label="b" type="m">mijn</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">O Heer, alst U <rhyme label="c" type="f">ghenoeghet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Soe wilt my maken <rhyme label="b" type="m" corresp="#s1:l2">vrij</rhyme>.'</l>
        <l id="s1:l5" met="3" type="-+">O Heer, alst U <rhyme label="c" type="f" corresp="#s1:l3">ghenoeghet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Soe wilt my maken <rhyme label="b" type="m" corresp="#s1:l2">vrij</rhyme>.'</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'O siele, wel lieve <rhyme label="a" type="f">siele</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">O lieve <rhyme label="b" type="m">sielemy</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ic heb soe veel <rhyme label="c" type="f">gheleden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Al om die min van <rhyme label="b" type="m" corresp="#s2:l2">di</rhyme>!'</l>
        <l id="s2:l5" met="3" type="-+">Ic heb soe veel <rhyme label="c" type="f" corresp="#s2:l3">gheleden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Al om die min van <rhyme label="b" type="m" corresp="#s2:l2">di</rhyme>!'</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">'Sel ic noch langher <rhyme label="a" type="f">liden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O lieve Here <rhyme label="b" type="m">mijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soe wilt in mijn hert <rhyme label="c" type="f">bescryven</rhyme></l>
        <l id="s3:l4" met="3" type="-+">U passy ende U <rhyme label="b" type="m" corresp="#s3:l2">pyn</rhyme>.'</l>
        <l id="s3:l5" met="3" type="-+">Soe wilt in mijn hert <rhyme label="c" type="f" corresp="#s3:l3">bescryven</rhyme></l>
        <l id="s3:l6" met="3" type="-+">U passy ende U <rhyme label="b" type="m" corresp="#s3:l2">pyn</rhyme>.'</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'O siele, weest wel <rhyme label="a" type="f">tevreden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ende altijt wel <rhyme label="b" type="m">ghemoet</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Ic sel u noch thus <rhyme label="c" type="f">halen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Al in Mijn ewich <rhyme label="b" type="m" corresp="#s4:l2">goet</rhyme>.'</l>
        <l id="s4:l5" met="3" type="-+">Ic sel u noch thus <rhyme label="c" type="f" corresp="#s4:l3">halen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Al in Mijn ewich <rhyme label="b" type="m" corresp="#s4:l2">goet</rhyme>.'</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">'Dat broet, dat is <rhyme label="a" type="f">ghebacken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die wijn, die is <rhyme label="b" type="m">ondaen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die orghelen sijn <rhyme label="c" type="f">ontsloten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ic sel Mijn bruut <rhyme label="b" type="m" corresp="#s5:l2">ontfaen</rhyme>.'</l>
        <l id="s5:l5" met="3" type="-+">Die orghelen sijn <rhyme label="c" type="f" corresp="#s5:l3">ontsloten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ic sel Mijn bruut <rhyme label="b" type="m" corresp="#s5:l2">ontfaen</rhyme>.'</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die enghelen sellen <rhyme label="a" type="f">sijnghen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met alsoe soet <rhyme label="b" type="m">gheluyt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Als Ic u te huussel <rhyme label="c" type="f">halen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Mijn uutvercoren <rhyme label="b" type="m" corresp="#s6:l2">bruyt</rhyme>!'</l>
        <l id="s6:l5" met="3" type="-+">Als Ic u te huussel <rhyme label="c" type="f" corresp="#s6:l3">halen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Mijn uutvercoren <rhyme label="b" type="m" corresp="#s6:l2">bruyt</rhyme>!'</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">'Nu wil ic alsoe garen <rhyme label="a" type="f">liden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">O lieve Here <rhyme label="b" type="m">mijn</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En vromelike <rhyme label="c" type="f">strijden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Al om die min van <rhyme label="b" type="m" corresp="#s7:l2">Dy</rhyme>!'</l>
        <l id="s7:l5" met="3" type="-+">En vromelike <rhyme label="c" type="f" corresp="#s7:l3">strijden</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Al om die min van <rhyme label="b" type="m" corresp="#s7:l2">Dy</rhyme>!'</l>
      </lg>
    </lg>
  </text>
