  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'k BEn getrouwt met een quay <rhyme label="a" type="m">Griet</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Griet die heeft myn beste Broeck <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En sy doet my haren doeck <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Myn Vrouw is <rhyme label="b" type="m" corresp="#s1:l2">Hermaphrodriet</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Ick moet voor Magrietjen <rhyme label="c" type="f">neygen</rhyme>.</l>
        <l id="s1:l6" met="4" type="+-">'t Gaet tot mynen 't heel <rhyme label="d" type="m">verdraeyt</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">'t Haentjen dat moet t'onsent <rhyme label="c" type="f" corresp="#s1:l5">swyghen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">En het Hinneken dat <rhyme label="d" type="m" corresp="#s1:l6">kraeyt</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'k Gaen uyt-wercken vroegh en <rhyme label="a" type="m">laet</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En in plaets dat Griet sou <rhyme label="b" type="m">spinnen</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Om den kost te helpen <rhyme label="a" type="m" corresp="#s2:l1">winnen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Gaet sy klappen achter <rhyme label="b" type="m" corresp="#s2:l2">straet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">En als ick ten twellef <rhyme label="c" type="f">uren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">t'Huys kom en wat eten <rhyme label="d" type="m">souw</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Moet ick self de Pap gaen <rhyme label="c" type="f" corresp="#s2:l5">ruren</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Ende koken in de <rhyme label="d" type="m" corresp="#s2:l6">schouw</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als ick dan aen tafel <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Eet ick eerst <rhyme label="b" type="m">Preutel-pasteykens</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Met suer sauskens en vuyl <rhyme label="a" type="m" corresp="#s3:l1">eykens</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Griet die preutelt altydt <rhyme label="b" type="m" corresp="#s3:l2">aen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Al myn leet dat sy kan <rhyme label="c" type="f">weten</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Schiet sy my dan op myn <rhyme label="d" type="m">Broot</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Als ick een stuck Broot sou <rhyme label="c" type="f" corresp="#s3:l5">eten</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En voldoen aen mynen <rhyme label="d" type="m" corresp="#s3:l6">noodt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Lest-mael op ons <rhyme label="a" type="m">Kermis-feest</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Nooden ick een van myn <rhyme label="b" type="m">Vriende</rhyme></l>
        <l id="s4:l3" met="4" type="+-">En ick bat myn <rhyme label="a" type="m" corresp="#s4:l1">Wel-beminde</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Dat sy soet sou zyn van <rhyme label="b" type="m" corresp="#s4:l2">gheest</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Dat sy my gheen paer rooy <rhyme label="c" type="f">kaken</rhyme></l>
        <l id="s4:l6" met="4" type="+-">En sou setten voor de <rhyme label="d" type="m">Liên</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Oft beschaemt en soude <rhyme label="c" type="f" corresp="#s4:l5">maken</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Daer 't de Vrinden souwen <rhyme label="d" type="m" corresp="#s4:l6">sien</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Griet beloofde my op <rhyme label="a" type="m">trouw</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Dat s'haer gramschap in sou <rhyme label="b" type="m">binden</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En dat sy my voor de <rhyme label="a" type="m" corresp="#s5:l1">Vrinden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Niet bekekelen en <rhyme label="b" type="m" corresp="#s5:l2">souw</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">En al-even wel op 't <rhyme label="c" type="f">lesten</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Quam daer noch een <rhyme label="d" type="m">hapermert</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Als het spel nu scheen ten <rhyme label="c" type="f" corresp="#s5:l5">besten</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Speelden sy my noch een <rhyme label="d" type="m" corresp="#s5:l6">pert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'k Badt myn Vrouw dat sy den <rhyme label="a" type="m">Kaes</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Op de tafel soude <rhyme label="b" type="m">brenghen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Om den noen wat te <rhyme label="a" type="m" corresp="#s6:l1">verlenghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Want ick hou veel van dat <rhyme label="b" type="m" corresp="#s6:l2">aes</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Ian Cosyn was just <rhyme label="c" type="f">gheseten</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Met den rugh toe naer 't <rhyme label="d" type="m">Buffet</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Oft naer de Schappray met 't <rhyme label="c" type="f" corresp="#s6:l5">eten</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Daer den Kaes was in <rhyme label="d" type="m" corresp="#s6:l6">gheset</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Griet die thoonde haren <rhyme label="a" type="m">kop</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">'t Scheen dat sy den Kaes gingh <rhyme label="b" type="m">langhen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Maer die quay en boose <rhyme label="a" type="m" corresp="#s7:l1">slanghe</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Stack haer dicke vuysten <rhyme label="b" type="m" corresp="#s7:l2">op</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Sy stondt achter Iannens <rhyme label="c" type="f">rugghe</rhyme></l>
        <l id="s7:l6" met="4" type="+-">En sy sprack dus teghen <rhyme label="d" type="m">my</rhyme>:</l>
        <l id="s7:l7" met="4" type="+-">Lust u diën Kaesghy <rhyme label="c" type="f" corresp="#s7:l5">vlugghe</rhyme>?</l>
        <l id="s7:l8" met="4" type="+-">Hebder sin toe, segghet <rhyme label="d" type="m" corresp="#s7:l6">vry</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Ian Cosyn die sagh eens <rhyme label="a" type="m">om</rhyme></l>
        <l id="s8:l2" met="4" type="+-">En hy sagh daer die quay <rhyme label="b" type="m">prye</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Met haer vuysten <rhyme label="a" type="m" corresp="#s8:l1">alle-beye</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">En hy loegh syn-selven <rhyme label="b" type="m" corresp="#s8:l2">crom</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Maer ick sou daer wel wed' <rhyme label="c" type="f">grysen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Want ick eet sulck eenen <rhyme label="d" type="m">Kaes</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Voor myn daghelycksche <rhyme label="c" type="f" corresp="#s8:l5">spyse</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Ian wat dunckt u van dat <rhyme label="d" type="m" corresp="#s8:l6">aes</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
