    <melody>Ik droomde laatst bij nachten</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IK schat de Trouw ver <rhyme label="a" type="f">boven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">d'Eenzame <rhyme label="b" type="m">Levenstyd</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met regt kan ik haar <rhyme label="a" type="f" corresp="#s1:l1">loven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">'k Ben in myn hart <rhyme label="b" type="m" corresp="#s1:l2">verblyt</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">'k Geniet de zoete <rhyme label="c" type="m">Min</rhyme></l>
        <l id="s1:l6" met="3" type="-+">By myne Ziels - <rhyme label="c" type="m" corresp="#s1:l5">Vriendin</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Zoo in myn Huis als <rhyme label="a" type="f" corresp="#s1:l1">Hoven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Leef ik dus na myn <rhyme label="c" type="m" corresp="#s1:l5">zin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat kan ik meerder <rhyme label="a" type="f">wenschen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Als ik wel ben <rhyme label="b" type="m">vernoegt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">'k Verkeer met brave <rhyme label="a" type="f" corresp="#s2:l1">Menschen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En leef zoo als 't my <rhyme label="b" type="m" corresp="#s2:l2">voegt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Bevryt van ramp en <rhyme label="c" type="m">druk</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Bestraalt my het <rhyme label="c" type="m" corresp="#s2:l5">Geluk</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Ver boven alle <rhyme label="a" type="f" corresp="#s2:l1">wenschen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Of menig ryke <rhyme label="c" type="m" corresp="#s2:l5">Kruk</rhyme>.</l>
      </lg>
    </lg>
  </text>
