    <melody>Ik zie de morgenster</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk ligghe in desen <rhyme label="a" type="f">dale</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met sonden seer <rhyme label="b" type="m">beuaen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dies lide ick grote <rhyme label="a" type="f" corresp="#s1:l1">quale</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ick en can niet op <rhyme label="b" type="m" corresp="#s1:l2">ghestaen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dat doet der werelt <rhyme label="a" type="f">minne</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die heeft mi al <rhyme label="b" type="m">verblint</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Hoe blide waer ick van <rhyme label="a" type="f" corresp="#s2:l1">sinne</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Hadde ict in tijts <rhyme label="b" type="m" corresp="#s2:l2">versint</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe sal ic mi nu <rhyme label="a" type="f">bedwingen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het dunct mi groote <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Natuer en wils niet <rhyme label="a" type="f" corresp="#s3:l1">ghehingen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Si wilt al in vruechden <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Minen geest is wel <rhyme label="a" type="f">ghenegen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Om voer mijn sonden te liden <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Maer nature is hier <rhyme label="a" type="f" corresp="#s4:l1">teghen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Si seyt ten sal niet <rhyme label="b" type="m" corresp="#s4:l2">sijn</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dus lide ick grote <rhyme label="a" type="f">smerte</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ende also grooten <rhyme label="b" type="m">strijt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Van binnen in mijn <rhyme label="a" type="f" corresp="#s5:l1">herte</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Helpt mi God <rhyme label="b" type="m" corresp="#s5:l2">ghebenedijt</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Waer toe sal ick mi <rhyme label="a" type="f">keeren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En weet ick ymmer <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Nature wil mi <rhyme label="a" type="f" corresp="#s6:l1">verheeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dies lide ick swaer <rhyme label="b" type="m" corresp="#s6:l2">verdriet</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Troost soude ic wel <rhyme label="a" type="f">begheren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van onsen heere <rhyme label="b" type="m">soet</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Maer dien moet ick <rhyme label="a" type="f" corresp="#s7:l1">ontbeeren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Natuere is diet mi <rhyme label="b" type="m" corresp="#s7:l2">doet</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maer sonder troost van <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Te leuen / is liden <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Och mocht ic nature <rhyme label="a" type="f" corresp="#s8:l1">verwinnen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Soe en hadde ick gheen <rhyme label="b" type="m" corresp="#s8:l2">noot</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dus moet ick striden <rhyme label="a" type="f">seere</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Al tegen tvleesch en <rhyme label="b" type="m">bloet</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Helpt mi ghenadighe <rhyme label="a" type="f" corresp="#s9:l1">heere</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Dat ick verwinnen <rhyme label="b" type="m" corresp="#s9:l2">moet</rhyme>.</l>
      </lg>
    </lg>
  </text>
