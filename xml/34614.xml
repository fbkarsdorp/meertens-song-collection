  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MOrghen-sterre die soo <rhyme label="a" type="f">blickert</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Aen den blonden <rhyme label="b" type="m">dagheraet</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Rollende my soo <rhyme label="a" type="f" corresp="#s1:l1">ontflickert</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ick bidd' dat ghy doch eens <rhyme label="b" type="m" corresp="#s1:l2">gaet</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Aen mijn liefken kijcken hoe <rhyme label="c" type="m">s'</rhyme></l>
        <l id="s1:l6" met="4" type="+-">In haer soete droomkens <rhyme label="c" type="m" corresp="#s1:l5">bloes</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Aen haer kijcken hoe de <rhyme label="a" type="f">kaken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Naest haer neusken van <rhyme label="b" type="m">albast</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Soetjens daverende <rhyme label="a" type="f" corresp="#s2:l1">blaken</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Ey ! loopt doch, haer eens <rhyme label="b" type="m" corresp="#s2:l2">verrast</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Naeckt is haer sneeuw-witte <rhyme label="c" type="m">borst</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Soo gh'iet fraeyts te loepen <rhyme label="c" type="m" corresp="#s2:l5">dorst</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gaet, en komt my dan <rhyme label="a" type="f">vertellen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In wat droomkens dat sy <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Let wel hoe haer blaeskens <rhyme label="a" type="f" corresp="#s3:l1">lellen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Loeyt af 'tghene ick nu <rhyme label="b" type="m" corresp="#s3:l2">mis</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">All haer soentjens die sy <rhyme label="c" type="m">dus</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Muntet in haer <rhyme label="c" type="m" corresp="#s3:l5">oore-kus</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Vaert, oft wilt ghy dat ick <rhyme label="a" type="f">meden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Aen haer' g'lase vensters <rhyme label="b" type="m">kom</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Nakende met mijn zwaer <rhyme label="a" type="f" corresp="#s4:l1">le'den</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Dorpel van haer kamer <rhyme label="b" type="m" corresp="#s4:l2">stom</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Ernstigh siende dat 'k soo <rhyme label="c" type="m">gaer</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Rake, ende sien aen <rhyme label="c" type="m" corresp="#s4:l5">haer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Borstjens 'k sien u met <rhyme label="a" type="f">bedencken</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Och ! hoe lighdy daer half <rhyme label="b" type="m">naeckt</rhyme> ?</l>
        <l id="s5:l3" met="4" type="+-">Roert uw' lipkens om te <rhyme label="a" type="f" corresp="#s5:l1">schencken</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Kuskens, ooghskens die soo <rhyme label="b" type="m" corresp="#s5:l2">blaeckt</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Hoe komt dat ghy niet en <rhyme label="c" type="m">keert</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Tot hem die u lonckend' <rhyme label="c" type="m" corresp="#s5:l5">eert</rhyme> ?</l>
      </lg>
    </lg>
  </text>
</song>
