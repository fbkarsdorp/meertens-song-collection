  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">ACh op het <rhyme label="a" type="f">laetste</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Comt de droeve <rhyme label="b" type="m">Wee</rhyme>!</l>
        <l id="s1:l3" met="2" type="-+">Haer op het <rhyme label="a" type="f" corresp="#s1:l1">quaetste</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Noch vertoonen <rhyme label="b" type="m" corresp="#s1:l2">mee</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">O Moeder <rhyme label="c" type="m">Godts</rhyme>!</l>
        <l id="s1:l6" met="3" type="-+">Hoe is u troost <rhyme label="d" type="m">verkort</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Nu u het <rhyme label="c" type="m" corresp="#s1:l5">doodts</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Lichaem ontrocken <rhyme label="d" type="m" corresp="#s1:l6">wordt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Hem te sien <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Deed' u herte <rhyme label="b" type="m">seer</rhyme>:</l>
        <l id="s2:l3" met="2" type="-+">Maer hem te <rhyme label="a" type="f" corresp="#s2:l1">derven</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Quest u ziele <rhyme label="b" type="m" corresp="#s2:l2">meer</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Iohannis, <rhyme label="c" type="m">ach</rhyme>!</l>
        <l id="s2:l6" met="3" type="-+">Saecht ghy met <rhyme label="d" type="m">Magdaleen</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Wel grooter <rhyme label="c" type="m" corresp="#s2:l5">dach</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Van bitterlijck <rhyme label="d" type="m" corresp="#s2:l6">gheween</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">In twee <rhyme label="a" type="f">fonteynen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Schijnt dat Iesus <rhyme label="b" type="m">plast</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Daer sy als <rhyme label="a" type="f" corresp="#s3:l1">reyne</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Moeder hem mee' <rhyme label="b" type="m" corresp="#s3:l2">wast</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Wat droever <rhyme label="c" type="m">kus</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Geeft sy hem daer van <rhyme label="d" type="m">nieu</rhyme>?</l>
        <l id="s3:l7" met="2" type="-+">En seydt hem <rhyme label="c" type="m" corresp="#s3:l5">dus</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">De laetste-mael <rhyme label="d" type="m" corresp="#s3:l6">Adieu</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ey <rhyme label="a" type="f">Nicodeme</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Wilt dit doode <rhyme label="b" type="m">Lijck</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Doch van haer <rhyme label="a" type="f" corresp="#s4:l1">neme</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Heel <rhyme label="b" type="m" corresp="#s4:l2">eerbiedelijck</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Van <rhyme label="c" type="m">Armathy</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Draecht hem tot u <rhyme label="d" type="m">Spelonck</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Die altijdt <rhyme label="c" type="m" corresp="#s4:l5">vry</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Van alle misdaedt <rhyme label="d" type="m" corresp="#s4:l6">blocnk</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Dit laetste <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Van u lieve <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Moet ons <rhyme label="a" type="f" corresp="#s5:l1">gheleyden</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">O Maria <rhyme label="b" type="m" corresp="#s5:l2">schoon</rhyme>!</l>
        <l id="s5:l5" met="2" type="-+">Ter plaetse <rhyme label="c" type="m">waert</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Daer men geen scheyden <rhyme label="d" type="m">spreeckt</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Noch daer het <rhyme label="c" type="m" corresp="#s5:l5">swaert</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Van rouw geen hert <rhyme label="d" type="m" corresp="#s5:l6">doorsteeckt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
