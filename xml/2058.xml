  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WEent menschen <rhyme label="a" type="m">al-ghelyck</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Weent uyt een droevig <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De vreught van 't <rhyme label="a" type="m" corresp="#s1:l1">Hemel-ryck</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Hanght hier bekleet met <rhyme label="b" type="m" corresp="#s1:l2">smert</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">De gulde Son <rhyme label="c" type="m">beswyckt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">En wordt in Bloedt <rhyme label="d" type="m">gheverft</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Als sy den Bergh <rhyme label="c" type="m" corresp="#s1:l5">bekyckt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Daer haren Schepper <rhyme label="d" type="m" corresp="#s1:l6">sterft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Maen wort grauw en <rhyme label="a" type="m">blauw</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En als een bloedt soo <rhyme label="b" type="m">root</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Sterren draghen <rhyme label="a" type="m" corresp="#s2:l1">rouw</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om hunnen Scheppers <rhyme label="b" type="m" corresp="#s2:l2">doodt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Het Hemels <rhyme label="c" type="m">Firmament</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Thoont door syn <rhyme label="d" type="m">duysternis</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat 't synen Schepper <rhyme label="c" type="m" corresp="#s2:l5">kent</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Die daer ghestorven <rhyme label="d" type="m" corresp="#s2:l6">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den steenen Bergh die <rhyme label="a" type="m">scheurt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daer Jesus sterft de <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Het Aert-ryck beeft en <rhyme label="a" type="m" corresp="#s3:l1">treurt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En is in grooten <rhyme label="b" type="m" corresp="#s3:l2">noot</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Het sondigh hert <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Siet sonder eenen <rhyme label="d" type="m">Traen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Veel herter als den <rhyme label="c" type="m" corresp="#s3:l5">steen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Dit droef specktakel <rhyme label="d" type="m" corresp="#s3:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den goeden <rhyme label="a" type="m">Moordenaer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Roept Heere peyst op <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Laet my met u daer <rhyme label="a" type="m" corresp="#s4:l1">naer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In 't Paradys zyn <rhyme label="b" type="m" corresp="#s4:l2">bly</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Ick hebb' myn ziel <rhyme label="c" type="m">vermoort</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Al meer als eenen <rhyme label="d" type="m">keer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Myn ziel die light <rhyme label="c" type="m" corresp="#s4:l5">versmoort</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Maer 't is my leet ô <rhyme label="d" type="m" corresp="#s4:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De Dooden die staen <rhyme label="a" type="m">op</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Als 't Leven sterft de <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Maer ghy ô herden <rhyme label="a" type="m" corresp="#s5:l1">kop</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Blyft noch al even <rhyme label="b" type="m" corresp="#s5:l2">snoodt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Verlaet u sondigh <rhyme label="c" type="m">graf</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En reynight uw <rhyme label="d" type="m">ghemoet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Wascht al uw sonden <rhyme label="c" type="m" corresp="#s5:l5">af</rhyme></l>
        <l id="s5:l8" met="3" type="-+">In Jesus dierbaer <rhyme label="d" type="m" corresp="#s5:l6">Bloet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
