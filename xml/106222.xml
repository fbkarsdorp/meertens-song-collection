  <author>Arnold Bon</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">CLoride mijn <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Zijn mijn Gantsch <rhyme label="b" type="m">ontvoert</rhyme></l>
        <l id="s1:l3" met="3" type="+-">En aant droeuig <rhyme label="a" type="f" corresp="#s1:l1">Minnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Soo geweldig vast <rhyme label="b" type="m" corresp="#s1:l2">gesnoert</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Dat ick gloey in heete <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Is dat vreugt? het mach wel <rhyme label="c" type="m" corresp="#s1:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Ga'k mijn Schaapjes <rhyme label="a" type="f">dryven</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Eentig deur het <rhyme label="b" type="m">Bos</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Mijn gedachten <rhyme label="a" type="f" corresp="#s2:l1">blijven</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Aande Min: Hoe raack ick <rhyme label="b" type="m" corresp="#s2:l2">los</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Doch en nacht ick droevig <rhyme label="c" type="m">quin</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">Is dat vreugt? het mag wel <rhyme label="c" type="m" corresp="#s2:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">K'word ter Min <rhyme label="a" type="f">gedwonge</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Sy my lessen <rhyme label="b" type="m">geeft</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Even als een <rhyme label="a" type="f" corresp="#s3:l1">Jonge</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die voor s'Meesters straffe <rhyme label="b" type="m" corresp="#s3:l2">beeft</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Want ick vrees haar straf <rhyme label="c" type="m">aanschijn</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Dat my meer als placken <rhyme label="c" type="m" corresp="#s3:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">K'wenste wel te <rhyme label="a" type="f">weten</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Hoe den Min my <rhyme label="b" type="m">bond</rhyme>?</l>
        <l id="s4:l3" met="3" type="+-">Want ick noyt <rhyme label="a" type="f" corresp="#s4:l1">geseten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Was, daar oyt de Minne <rhyme label="b" type="m" corresp="#s4:l2">stont</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En noyt wist vant wreet <rhyme label="c" type="m">Fenijn</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Dat in Minne vreugt kost <rhyme label="c" type="m" corresp="#s4:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Nu mijn tere <rhyme label="a" type="f">Jaren</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Zijn op u <rhyme label="b" type="m">gevest</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Laat ons samen <rhyme label="a" type="f" corresp="#s5:l1">paren</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Eer den brant mijn leven <rhyme label="b" type="m" corresp="#s5:l2">lest</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Zijn u schaapjes meer als <rhyme label="c" type="m">mijn</rhyme>?</l>
        <l id="s5:l6" met="4" type="+-">K'sal weer trouwe hoeder <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
