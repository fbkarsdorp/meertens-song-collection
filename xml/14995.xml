  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Foey Don Jan! al u <rhyme label="a" type="f">bedryven</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Staet voor God en mensch <rhyme label="b" type="m">beschaemt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Hoe t oock wesen mach <rhyme label="b" type="m" corresp="#s1:l2">genaemt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Al u doen kan niet <rhyme label="a" type="f" corresp="#s1:l1">beklyven</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">want u neen dat is u <rhyme label="c" type="m">ja</rhyme>:</l>
        <l id="s1:l6" met="4" type="+-">'tWelc dan is u meesters <rhyme label="c" type="m" corresp="#s1:l5">schae</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Al u veynsen en u <rhyme label="a" type="f">smeken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Hoe 't mach wesen op <rhyme label="b" type="m">gepronckt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Is als 'tvier nu gansch <rhyme label="b" type="m" corresp="#s2:l2">ontvonckt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Al u Spaensche loose <rhyme label="a" type="f" corresp="#s2:l1">treken</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Syn soo klaer nu aenden <rhyme label="c" type="m">dag</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Als de Sonne schijnen <rhyme label="c" type="m" corresp="#s2:l5">mach</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Bastert zijt ghy van <rhyme label="a" type="f">natueren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Bastert zijt ghy in Gods <rhyme label="b" type="m">kerck</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Bastert vintmen al u <rhyme label="b" type="m" corresp="#s3:l2">werck</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Basters doen niet lang kan <rhyme label="a" type="f" corresp="#s3:l1">dueren</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Bastert sterft hy die al <rhyme label="c" type="m">om</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Gaet in basters wegen <rhyme label="c" type="m" corresp="#s3:l5">krom</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Sond' op sonde gaet ghy <rhyme label="a" type="f">hoopen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Sondig is u doen en <rhyme label="b" type="m">laet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ghy gaet met de sond' te <rhyme label="b" type="m" corresp="#s4:l2">raed'</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Mette sonde sult ghy <rhyme label="a" type="f" corresp="#s4:l1">loopen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">In des sonds <rhyme label="c" type="m">verderffenis</rhyme>;</l>
        <l id="s4:l6" met="4" type="+-">Want de sond 'sdoots oorsaeck <rhyme label="c" type="m" corresp="#s4:l5">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
