    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">Geestelijk lied</tag>
    </tags>
    <melody>Ik arm schaapje aan de heide</melody>
    <categories/>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">FIjn Godtvreesende <rhyme label="a" type="f">helden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Waren in <rhyme label="b" type="m">Israel</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die haer dapperlijck <rhyme label="a" type="f" corresp="#s1:l1">stelden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Teghen svyandts <rhyme label="b" type="m" corresp="#s1:l2">ghequel</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Als Iephthae <rhyme label="c" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Een strijdtbaer man // ghenomen <rhyme label="d" type="m">an</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Om een rechter te <rhyme label="c" type="f" corresp="#s1:l5">wesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als die fel <rhyme label="a" type="f">Ammoniten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Seer sterck waren in't <rhyme label="b" type="m">velt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Om Israel te <rhyme label="a" type="f" corresp="#s2:l1">smijten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Soo wert Iephtha <rhyme label="b" type="m" corresp="#s2:l2">ontstelt</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Welck dreef de gheest des <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En heeft Godt saen // beloft' <rhyme label="d" type="m">gedaen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Tot sijnen swaer <rhyme label="c" type="f" corresp="#s2:l5">verseeren</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Waert dat Godt sijn <rhyme label="a" type="f">vyanden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Gaf onder sijnen <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wat hem eerst quam ter <rhyme label="a" type="f" corresp="#s3:l1">handen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wt sijn huys te <rhyme label="b" type="m" corresp="#s3:l2">ghemoet</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Dat wild' hy doen van <rhyme label="c" type="f">'tleven</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En inden brandt // tot <rhyme label="d" type="m">offerhandt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Den Heere <rhyme label="c" type="f" corresp="#s3:l5">overgheven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Godt gaf hem de <rhyme label="a" type="f">victory</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Quam t'huyswaert van den <rhyme label="b" type="m">slagh</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sijn dochter quam met <rhyme label="a" type="f" corresp="#s4:l1">glory</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Tot hem, als hyse <rhyme label="b" type="m" corresp="#s4:l2">sagh</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Scheurde hy sijn <rhyme label="c" type="f">gewaden</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Met droeven schijn // ach dochter <rhyme label="d" type="m">mijn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sprack hy met druck <rhyme label="c" type="f" corresp="#s4:l5">beladen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ick heb tot mijnder <rhyme label="a" type="f">qualen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Godt opghedaen mijn <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ick machs niet weerom <rhyme label="a" type="f" corresp="#s5:l1">halen</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Vader, sprack sy <rhyme label="b" type="m" corresp="#s5:l2">terstondt</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Hebt ghy u mondt <rhyme label="c" type="f">ontloken</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Tot den Heer Godt // soo sy mijn <rhyme label="d" type="m">lot</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Ghelijck ghy hebt <rhyme label="c" type="f" corresp="#s5:l5">ghesproken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer Vader wilt <rhyme label="a" type="f">toelaten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat ick twee maenden <rhyme label="b" type="m">lanck</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Noch gaen mach mijnder <rhyme label="a" type="f" corresp="#s6:l1">straten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Op berghen sonder <rhyme label="b" type="m" corresp="#s6:l2">dwanck</rhyme></l>
        <l id="s6:l5" met="3" type="+-">Met mijnen <rhyme label="c" type="f">ghespelinnen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Beweenen daer, mijn maeghdom <rhyme label="d" type="m">klaer</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Gaet heen sprack hy uyt <rhyme label="c" type="f" corresp="#s6:l5">minnen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Als twee maenden om <rhyme label="a" type="f">waren</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Haer jonghe jeught <rhyme label="b" type="m">beschreyt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ghekeert weer tot den <rhyme label="a" type="f" corresp="#s7:l1">haren</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Stondt sy ter doodt <rhyme label="b" type="m" corresp="#s7:l2">bereydt</rhyme>,</l>
        <l id="s7:l5" met="3" type="+-">De Vader moest ten <rhyme label="c" type="f">brande</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Sijn eenigh kint // van hem <rhyme label="d" type="m">bemint</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Gheven tot <rhyme label="c" type="f" corresp="#s7:l5">offerhande</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Daer na om te <rhyme label="a" type="f">beklaghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ginghen in <rhyme label="b" type="m">Israel</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">De dochteren vier <rhyme label="a" type="f" corresp="#s8:l1">daghen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Iaerlijcx na den <rhyme label="b" type="m" corresp="#s8:l2">bevel</rhyme>,</l>
        <l id="s8:l5" met="3" type="+-">Om des <rhyme label="c" type="f">Gileaditen</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Dochterken reyn // des <rhyme label="d" type="m">Capiteyn</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Welck sloegh die <rhyme label="c" type="f" corresp="#s8:l5">Ammoniten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O mensch tot u <rhyme label="a" type="f">verstercken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Vreest Godt uyt al u <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Dit voorbeeldt wilt <rhyme label="a" type="f" corresp="#s9:l1">aenmercken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En gheeft u woorden <rhyme label="b" type="m" corresp="#s9:l2">acht</rhyme>,</l>
        <l id="s9:l5" met="3" type="+-">Om die recht te <rhyme label="c" type="f">beleven</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Want van elck woordt, uyt u <rhyme label="d" type="m">ghehoort</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Moet ghy reeckenschap <rhyme label="c" type="f" corresp="#s9:l5">gheven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
