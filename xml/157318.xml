    <tags/>
    <melody>Polyphemus aan de stranden</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IK ben lest over het hof <rhyme label="a" type="m">gegaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Een Lands Captyntje sprak my daer <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hy vroeg my al met 'er <rhyme label="b" type="m">daet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Of ik heb zin al na de <rhyme label="b" type="m" corresp="#s1:l3">baert</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ik liet myn naem <rhyme label="c" type="f">opschryven</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Om gelt te <rhyme label="c" type="f" corresp="#s1:l5">krygen</rhyme>;</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ik streek het geld al in myn <rhyme label="a" type="m">hoed</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Daer op kreeg ik een frisse <rhyme label="a" type="m" corresp="#s2:l1">moed</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ik ging daer zitten op myn <rhyme label="b" type="m">gemak</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En rookte daer een pyp <rhyme label="b" type="m" corresp="#s2:l3">Tabak</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Ik liet daer een borrel by <rhyme label="c" type="f">zetten</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Wild daer maer op <rhyme label="c" type="f" corresp="#s2:l5">letten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hier van daen ging ik myn <rhyme label="a" type="m">weeg</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Na myn Winkel in de <rhyme label="a" type="m" corresp="#s3:l1">Halsteeg</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Toen ik op myn Winkel <rhyme label="b" type="m">kwam</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Luystert wat ik daer <rhyme label="b" type="m" corresp="#s3:l3">vernam</rhyme>?</l>
        <l id="s3:l5" met="3" type="-+">Myn Baes begon te <rhyme label="c" type="f">kyven</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Waer zal ik <rhyme label="c" type="f" corresp="#s3:l5">blyven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Myn Baes sprak jonker wat is <rhyme label="a" type="m">dit</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Zal jy gaen vaeren op een <rhyme label="a" type="m" corresp="#s4:l1">Oorlogschip</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ben jy dan zo kwalyk van <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Of heb jy by de Meisjes <rhyme label="b" type="m" corresp="#s4:l3">geweest</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Iy zult 't doen <rhyme label="c" type="f">beklaegen</rhyme>:</l>
        <l id="s4:l6" met="2" type="+-">In korte <rhyme label="c" type="f" corresp="#s4:l5">daegen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Adieu myn alderschoonste <rhyme label="a" type="m">blom</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Over achtien Maentjes kom ik <rhyme label="a" type="m" corresp="#s5:l1">wederom</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ben jy dan nog vry <rhyme label="b" type="m">gezel</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Zo zal ik u trouwen <rhyme label="b" type="m" corresp="#s5:l3">evenwel</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Ik zal u schoone kint <rhyme label="c" type="f">trouwen</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">En bruyloft <rhyme label="c" type="f" corresp="#s5:l5">houwen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die dat Lietje heeft <rhyme label="a" type="m">gedigt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Het waere drie knaepjes haer hertje was <rhyme label="a" type="m" corresp="#s6:l1">ligt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">De eene was wit, de andere was <rhyme label="b" type="m">zwart</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">De derde had 'er geen hemd aen 't <rhyme label="b" type="m" corresp="#s6:l3">gat</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Het waere drie looze <rhyme label="c" type="f">gezellen</rhyme>,</l>
        <l id="s6:l6" met="2" type="+-">Die my het <rhyme label="c" type="f" corresp="#s6:l5">vertellen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
