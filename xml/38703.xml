  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Wel wie hoor ick daer, <rhyme label="a" type="f">Philander</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Noyt en vond'men onder <rhyme label="a" type="f" corresp="#s1:l1">ander</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Herders, sulcken diefken <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat de herten ende <rhyme label="c" type="f">sinnen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Van de slechte <rhyme label="c" type="f" corresp="#s1:l4">Herderinnen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Soo kond' buyghen 'tsijn <rhyme label="b" type="m" corresp="#s1:l3">ghebiet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Het is dickmaels wel <rhyme label="a" type="f">ghebleken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">'Tspreken vol van loose <rhyme label="a" type="f" corresp="#s2:l1">treken</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Brachter menich in't <rhyme label="b" type="m">verdriet</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Aerdich schijnen, listich <rhyme label="c" type="f">locken</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Heeft daer veel in't net <rhyme label="c" type="f" corresp="#s2:l4">ghetrocken</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Met een Maire-minne <rhyme label="b" type="m" corresp="#s2:l3">liedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Herder waren u <rhyme label="a" type="f">ghedachten</rhyme>?</l>
        <l id="s3:l2" met="4" type="+-">Al ghelijck uw' <rhyme label="a" type="f" corresp="#s3:l1">minne-clachten</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">En u herte als den <rhyme label="b" type="m">mont</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Maer wie kan van trouwheydt <rhyme label="c" type="f">spreken</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Daer soo veel sijn <rhyme label="c" type="f" corresp="#s3:l4">afgheweken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Hoort dit van u <rhyme label="b" type="m" corresp="#s3:l3">Rosamont</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Was Medea niet <rhyme label="a" type="f">gheschonden</rhyme>?</l>
        <l id="s4:l2" met="4" type="+-">Als haer kuysheydts bloem <rhyme label="a" type="f" corresp="#s4:l1">verslonden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Was, door Iasons snoode <rhyme label="b" type="m">daet</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Schijn van trouw hoe kondy <rhyme label="c" type="f">wachten</rhyme>?</l>
        <l id="s4:l5" met="4" type="+-">Soo verholen u <rhyme label="c" type="f" corresp="#s4:l4">betrachten</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dat ghy eereloos <rhyme label="b" type="m" corresp="#s4:l3">ontgaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Hondert woorden, vijftich <rhyme label="a" type="f">trecken</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Hondert vrijers, vijftich <rhyme label="a" type="f" corresp="#s5:l1">gecken</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En in't kort alhier <rhyme label="b" type="m">gheseyt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Wie in't minnen all' sijn <rhyme label="c" type="f">segghen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Kan met trouw-bewijs <rhyme label="c" type="f" corresp="#s5:l4">weerlegghen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Noyt om weder-liefde <rhyme label="b" type="m" corresp="#s5:l3">schreyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
