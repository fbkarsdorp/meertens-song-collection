  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe langh sal ick <rhyme label="a" type="f">gheduldigh</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Lijden en suchten <rhyme label="b" type="m">mee</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Mijn traantjens <rhyme label="a" type="f" corresp="#s1:l1">menichvuldigh</rhyme></l>
        <l id="s1:l4" met="3" type="-+">VVtstorten tot een <rhyme label="b" type="m" corresp="#s1:l2">Zee</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Och sal ick voor mijn <rhyme label="c" type="f">sterven</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Niet <rhyme label="c" type="f" corresp="#s1:l5">vervverven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Mijn teer medooghent <rhyme label="a" type="f">herte</rhyme></l>
        <l id="s2:l2" met="3" type="-+">V lijden is <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En overgroote <rhyme label="a" type="f" corresp="#s2:l1">smerte</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En vvenst daar van een <rhyme label="b" type="m" corresp="#s2:l2">ent</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Ia hoopt op u <rhyme label="c" type="f">verblijden</rhyme></l>
        <l id="s2:l6" met="2" type="+-">Voor het <rhyme label="c" type="f" corresp="#s2:l5">lijden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sal ick o fleur der <rhyme label="a" type="f">vvijven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Fortuyns <rhyme label="b" type="m">quaatvvillicheyt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Of den tijdt dat toe <rhyme label="a" type="f" corresp="#s3:l1">schrijven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Of mijn <rhyme label="b" type="m" corresp="#s3:l2">onvvaardicheyt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat ick met ’t bitter <rhyme label="c" type="f">strijen</rhyme></l>
        <l id="s3:l6" met="2" type="+-">Niet <rhyme label="c" type="f" corresp="#s3:l5">bedije</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mijn ouders heel <rhyme label="a" type="f">t’onvrede</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En die de oorsaeck <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Mijn vrienden vvillen <rhyme label="a" type="f" corresp="#s4:l1">mede</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Oock gants niet helpen <rhyme label="b" type="m" corresp="#s4:l2">mijn</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Daar teghen al mijn <rhyme label="c" type="f">praten</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Mach niet <rhyme label="c" type="f" corresp="#s4:l5">baten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Laet ons lief stil <rhyme label="a" type="f">vertrecken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dan in een ander <rhyme label="b" type="m">landt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Tot spijt die met ons <rhyme label="a" type="f" corresp="#s5:l1">gecken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Houdt daar, daar is mijn <rhyme label="b" type="m" corresp="#s5:l2">handt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ick sal u tot mijn <rhyme label="c" type="f">Vrouvve</rhyme></l>
        <l id="s5:l6" met="2" type="+-">Daar dan <rhyme label="c" type="f" corresp="#s5:l5">trouwen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick vrees te seer <rhyme label="a" type="f">’tverbolgen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Mijns ouders sinnen <rhyme label="b" type="m">quaat</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En oock het <rhyme label="a" type="f" corresp="#s6:l1">achtervolghen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Al op de versche <rhyme label="b" type="m" corresp="#s6:l2">daat</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dan souden vvy veel <rhyme label="c" type="f">plaghen</rhyme></l>
        <l id="s6:l6" met="2" type="+-">Moeten <rhyme label="c" type="f" corresp="#s6:l5">draghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
