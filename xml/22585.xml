  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Droch werelt, my gruwelt voer dijn <rhyme label="a" type="f">weesen</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Waer sijn si nu, die <rhyme label="a" type="f" corresp="#s1:l1">roesen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Die ghenesen niet en <rhyme label="b" type="f">conden</rhyme>?</l>
        <l id="s1:l4" met="3" type="-+">Si sijn te mael <rhyme label="b" type="f" corresp="#s1:l3">verslonden</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Des droevich ic <rhyme label="c" type="m">my</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Si sijn te mael <rhyme label="b" type="f" corresp="#s1:l3">verslonden</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Des droevich ic <rhyme label="c" type="m" corresp="#s1:l5">my</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wij moeten al ter selver <rhyme label="a" type="f">straten</rhyme>;</l>
        <l id="s2:l2" met="3" type="-+">Consten wi ons <rhyme label="a" type="f" corresp="#s2:l1">ghesaten</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Na maten ter <rhyme label="b" type="f">lengheden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die wech is wijt ende <rhyme label="b" type="f" corresp="#s2:l3">enge</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Seer <rhyme label="c" type="m">wonderlijc</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Die wech is wijt ende <rhyme label="b" type="f" corresp="#s2:l3">enge</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Seer <rhyme label="c" type="m" corresp="#s2:l5">wonderlijc</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het waer wel tijt dat ons <rhyme label="a" type="f">bedochten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ende also wijselijc <rhyme label="a" type="f" corresp="#s3:l1">vrochten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Na reden ons <rhyme label="b" type="f">levens</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Hi coemt, die ons sel <rhyme label="b" type="f" corresp="#s3:l3">gheven</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Een ewich <rhyme label="c" type="m">loen</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Hi coemt, die ons sel <rhyme label="b" type="f" corresp="#s3:l3">gheven</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Een ewich <rhyme label="c" type="m" corresp="#s3:l5">loen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Van werken ende van allen <rhyme label="a" type="f">woerden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Och, dat strenghen <rhyme label="a" type="f" corresp="#s4:l1">oerdel</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Des oerdels ic ducht, ic beve, Ic <rhyme label="b" type="f">ween</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">icsuchte voer sulken <rhyme label="b" type="f" corresp="#s4:l3">noot</rhyme>!</l>
        <l id="s4:l5" met="2" type="-+">Och dat strenghen <rhyme label="c" type="m">oerdel</rhyme></l>
        <l id="s4:l6" met="3" type="-+">icsuchte voer sulken <rhyme label="b" type="f" corresp="#s4:l3">noot</rhyme>!</l>
        <l id="s4:l7" met="2" type="-+">Och dat strenghen <rhyme label="c" type="m" corresp="#s4:l5">oerdel</rhyme></l>
      </lg>
    </lg>
  </text>
