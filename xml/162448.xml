  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SImson met Metalen <rhyme label="a" type="f">Leden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Quam in Gasa's Poorte <rhyme label="a" type="f" corresp="#s1:l1">treden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die hy uyt sijn grendels <rhyme label="b" type="m">light</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ende is daer mee <rhyme label="c" type="f">getogen</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Tot voor Hebron, daer om <rhyme label="c" type="f" corresp="#s1:l4">hoogen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Op een Bergh, hy hem weer <rhyme label="b" type="m" corresp="#s1:l3">stight</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Soo is Christus, 't heyl der <rhyme label="a" type="f">vroomen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Selver in de Doodt <rhyme label="a" type="f" corresp="#s2:l1">ghekomen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Ende heeft hem aen <rhyme label="b" type="m">ghevat</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Daer hy was een Poort der <rhyme label="c" type="f">Hellen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ende gingh hem weder <rhyme label="c" type="f" corresp="#s2:l4">stellen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Boven voor des Hemels <rhyme label="b" type="m" corresp="#s2:l3">Stadt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sterven is wel van <rhyme label="a" type="f">natuere</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Een ingangh ten Helschen <rhyme label="a" type="f" corresp="#s3:l1">vuere</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Maer in Christum nu niet <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Want het doet van't vleys <rhyme label="c" type="f">ontteug'len</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En de Ziel op <rhyme label="c" type="f" corresp="#s3:l4">Eng'le-vleug'len</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Op-waert vliegen, na den <rhyme label="b" type="m" corresp="#s3:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Troost uw Ziele, O ghy <rhyme label="a" type="f">vroomen</rhyme>!</l>
        <l id="s4:l2" met="4" type="+-">En wilt voor de Doodt niet <rhyme label="a" type="f" corresp="#s4:l1">schroomen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'t Is de Deur van 't <rhyme label="b" type="m">Hemels-Hof</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Maer ghy Sondaers boos van <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Voor u is de Doodt <rhyme label="c" type="f" corresp="#s4:l4">ghebleven</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Breeckt dan uw Godloosheydt <rhyme label="b" type="m" corresp="#s4:l3">of</rhyme>.</l>
      </lg>
    </lg>
  </text>
