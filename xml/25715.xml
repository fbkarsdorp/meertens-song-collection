  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Voor u ziele doch sorghe <rhyme label="a" type="m">draeght</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Naer het beelt Gods geschapen, <rhyme label="b" type="f">geschapen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghelijck een cloecke wijse <rhyme label="a" type="m" corresp="#s1:l1">maeght</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Wilt waken, en niet slapen, <rhyme label="b" type="f" corresp="#s1:l2">slapen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met neersticheyt t’dient <rhyme label="a" type="m">overleyt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Waerom nu Godt dit dede, <rhyme label="b" type="f">dede</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En naer sijn beeldt ons heeft <rhyme label="a" type="m" corresp="#s2:l1">bereyt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Deelt ons sijns wesens mede, <rhyme label="b" type="f" corresp="#s2:l2">mede</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Tekenen hy ons daer me <rhyme label="a" type="m">gheeft</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat wy nu met verlanghen, <rhyme label="b" type="f">verlanghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hem nu sullen liefhebben <rhyme label="a" type="m" corresp="#s3:l1">beleeft</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En vastelijck aenhanghen, <rhyme label="b" type="f" corresp="#s3:l2">aenhanghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Claerlijck ons die Schriftuer <rhyme label="a" type="m">vermelt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dat natuere moet blijcken, <rhyme label="b" type="f">blijcken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Elck Dier tot den sijnen <rhyme label="a" type="m" corresp="#s4:l1">verselt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En bemint sijns ghelijcken, <rhyme label="b" type="f" corresp="#s4:l2">ghelijcken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Laet niet hem eere aen te <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Want hy schiep u aendachtich, <rhyme label="b" type="f">aendachtich</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Veel heerlijcker (wilt dit <rhyme label="a" type="m" corresp="#s5:l1">bevroen</rhyme>)</l>
        <l id="s5:l4" met="4" type="-+">Als ander Dieren crachtich, <rhyme label="b" type="f" corresp="#s5:l2">crachtich</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Alsoo is die ziel over <rhyme label="a" type="m">t’landt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Boven die Son seer schoone, <rhyme label="b" type="f">schoone</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En hoogher van des Hemels <rhyme label="a" type="m" corresp="#s6:l1">standt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">T’firmament in den throone, <rhyme label="b" type="f" corresp="#s6:l2">throone</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En zijn wy Godt dan soo <rhyme label="a" type="m">ghelijck</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Deelachtich van natueren, <rhyme label="b" type="f">natueren</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Soo laet ons soecken d’eeuwich <rhyme label="a" type="m" corresp="#s7:l1">Rijck</rhyme></l>
        <l id="s7:l4" met="4" type="-+">In Ierusalems mueren, <rhyme label="b" type="f" corresp="#s7:l2">mueren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Soo wy weten en wel <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Als Godt sal openbaren, <rhyme label="b" type="f">openbaren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat wy oock sullen wel <rhyme label="a" type="m" corresp="#s8:l1">ghedaen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">In heerlijckheyt verclaren, <rhyme label="b" type="f" corresp="#s8:l2">verclaren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Daer sullen wy hem sien <rhyme label="a" type="m">voorwaer</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Alsoo hy is gheseten, <rhyme label="b" type="f">gheseten</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">In sijn groote heerlijckheyt <rhyme label="a" type="m" corresp="#s9:l1">claer</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En aen sijn tafel eten, <rhyme label="b" type="f" corresp="#s9:l2">eten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Och dat wy doch bedochten <rhyme label="a" type="m">dat</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Hoe souden wy Godt loven, <rhyme label="b" type="f">loven</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En danckbaer zijn voor desen <rhyme label="a" type="m" corresp="#s10:l1">schat</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Den grooten Godt hier boven, <rhyme label="b" type="f" corresp="#s10:l2">boven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ter eeren Heer van uwen <rhyme label="a" type="m">Naem</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Moet al ons doen hier enden, <rhyme label="b" type="f">enden</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Maeckt ons doch weerdich en <rhyme label="a" type="m" corresp="#s11:l1">bequaem</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Vwen Gheest wilt ons senden, <rhyme label="b" type="f" corresp="#s11:l2">sdneen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
