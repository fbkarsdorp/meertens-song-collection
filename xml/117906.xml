  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MEent gy dan den dagh des <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Soo te vieren en te <rhyme label="a" type="f" corresp="#s1:l1">eeren</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Slegs met enckel ledigh <rhyme label="b" type="m">gaen</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">d'Een den and'ren te <rhyme label="c" type="f">versellen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En wat praetjes te <rhyme label="c" type="f" corresp="#s1:l4">vertellen</rhyme>?</l>
        <l id="s1:l6" met="4" type="+-">Neen, hier mee is 't niet <rhyme label="b" type="m" corresp="#s1:l3">gedaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dit en magh geen Heyl'gen <rhyme label="a" type="f">heeten</rhyme>:</l>
        <l id="s2:l2" met="4" type="+-">'t Heyl'gen moet gy niet <rhyme label="a" type="f" corresp="#s2:l1">vergeten</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Heyl'gingh is het <rhyme label="b" type="m">oogemerck</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Waerom Godt alleene <rhyme label="c" type="f">woude</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Dat de mensche sich <rhyme label="c" type="f" corresp="#s2:l4">af-houde</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Van sijn dagelijcksche <rhyme label="b" type="m" corresp="#s2:l3">werck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ledigh wesen, ende <rhyme label="a" type="f">rusten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Maer alleen tot 's lichaems <rhyme label="a" type="f" corresp="#s3:l1">lusten</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Sonder heyl'gingh van sijn <rhyme label="b" type="m">Naem</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Is in geenderley <rhyme label="c" type="f">manieren</rhyme></l>
        <l id="s3:l5" met="4" type="+-">'s Heeren heyl'ge rust-dagh <rhyme label="c" type="f" corresp="#s3:l4">vieren</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">'t Is maer voor uw vleesch <rhyme label="b" type="m" corresp="#s3:l3">alt'saem</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Is den dagh des Heeren <rhyme label="a" type="f">vieren</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Met d'on-redelicke <rhyme label="a" type="f" corresp="#s4:l1">dieren</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Met het domme stomme <rhyme label="b" type="m">vee</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Die oock van haer arbeit <rhyme label="c" type="f">rusten</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Maer sich niet in Godt <rhyme label="c" type="f" corresp="#s4:l4">ver-lusten</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">Denckt dan op het heyl'gen <rhyme label="b" type="m" corresp="#s4:l3">mee'</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als gy uyt het huys des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Weder na uw huys sult <rhyme label="a" type="f" corresp="#s5:l1">keeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Set u dan terstont niet <rhyme label="b" type="m">neer</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Slegts tot eten, drincken, <rhyme label="c" type="f">speelen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Lachen, jocken ende <rhyme label="c" type="f" corresp="#s5:l4">quelen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Want daer meed' krijgt Godt geen <rhyme label="b" type="m" corresp="#s5:l3">eer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Door Godts woort wel <rhyme label="a" type="f">t'over-peynsen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">En dat, sonder eenigh <rhyme label="a" type="f" corresp="#s6:l1">veynsen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Wel te passen op sijn <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Door gespreek van heyl'ge <rhyme label="c" type="f">dingen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Door na-lesen, bidden, <rhyme label="c" type="f" corresp="#s6:l4">singen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Godes dagh geheyligt <rhyme label="b" type="m" corresp="#s6:l3">wert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Soeckt gy eerlick <rhyme label="a" type="f">tijt-verkorting</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Neemt voor al doch geen <rhyme label="a" type="f" corresp="#s7:l1">op-schorting</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Tot des Heeren heyl'ge <rhyme label="b" type="m">dagh</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Maer kiest een van uw ses <rhyme label="c" type="f">dagen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Op dat Godt, na sijn <rhyme label="c" type="f" corresp="#s7:l4">behagen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Gantsch den sijnen houden <rhyme label="b" type="m" corresp="#s7:l3">magh</rhyme>.</l>
      </lg>
    </lg>
