  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Hou <rhyme label="a" type="f">Amarillis</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Blijft soo ‘t u wil <rhyme label="a" type="f" corresp="#s1:l1">is</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Mijn blijven kan dy niet doen <rhyme label="b" type="f">gewinnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">U vluchten sal my costen <rhyme label="b" type="f" corresp="#s1:l3">mijn</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Soo waerdy min dan <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ten zy ghy jonste <rhyme label="c" type="m" corresp="#s1:l5">biedt</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Dit is het oude <rhyme label="c" type="m" corresp="#s1:l5">liedt</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Van die daer <rhyme label="b" type="f" corresp="#s1:l3">minnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">‘t Minnen is <rhyme label="a" type="f">lieven</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">In Vryers <rhyme label="a" type="f" corresp="#s2:l1">brieven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En oock in ‘t hert der trouwer <rhyme label="b" type="f">minnaren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Wilt sulcker namen hier <rhyme label="b" type="f" corresp="#s2:l3">verklaren</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Piramus wasser <rhyme label="c" type="m">een</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">‘t Was dwase liefd’ so ‘t <rhyme label="c" type="m" corresp="#s2:l5">scheen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Doch ick draegh liefde <rhyme label="c" type="m" corresp="#s2:l5">reen</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Laet liefde <rhyme label="b" type="f" corresp="#s2:l3">varen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">‘t Varen waer <rhyme label="a" type="f">lieflijck</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">En u <rhyme label="a" type="f" corresp="#s3:l1">gerieflijck</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Voeren wy in een schip te <rhyme label="b" type="f">samen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Nu komt melancoly dy meerder <rhyme label="b" type="f" corresp="#s3:l3">pramen</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Dat ick u eygen <rhyme label="c" type="m">waer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Soo waer ick slecht te <rhyme label="c" type="m" corresp="#s3:l5">gaer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ick blijf gewoont een <rhyme label="c" type="m" corresp="#s3:l5">paer</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Ghy meught wel <rhyme label="b" type="f" corresp="#s3:l3">ramen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ramen; ‘t is <rhyme label="a" type="f">waerlijck</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Ey wat <rhyme label="a" type="f" corresp="#s4:l1">gespaerlijck</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Mijn hert is trouw en mijn <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Een herte trou, trou loon sal <rhyme label="b" type="f" corresp="#s4:l3">wachten</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Ick min u inder <rhyme label="c" type="m">daet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ick doe mijn vrienden <rhyme label="c" type="m" corresp="#s4:l5">raedt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Een Vryers schoone <rhyme label="c" type="m" corresp="#s4:l5">praet</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Is niet veel <rhyme label="b" type="f" corresp="#s4:l3">t’achten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Bloeme <rhyme label="a" type="f">Matresse</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Dits d’oude <rhyme label="a" type="f" corresp="#s5:l1">lesse</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ick ben de trouste van dijn <rhyme label="b" type="f">servitueren</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo lang dees bruylofts feest sal <rhyme label="b" type="f" corresp="#s5:l3">dueren</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Neen neen ick meynt soo <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dan serviteur <rhyme label="c" type="m" corresp="#s5:l5">gebiedt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Neen neen ick meynt soo <rhyme label="c" type="m" corresp="#s5:l5">niet</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">‘t Zijn Vryers <rhyme label="b" type="f" corresp="#s5:l3">kueren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Princes wilt <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Wat soudt <rhyme label="a" type="f" corresp="#s6:l1">oorboren</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">Of ick dy nu mijn trou gingh <rhyme label="b" type="f">schencken</rhyme>?</l>
        <l id="s6:l4" met="4" type="-+">Laet af dijn sinnen meer te <rhyme label="b" type="f" corresp="#s6:l3">krencken</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ick soud’ genesen <rhyme label="c" type="m">ras</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Alst niet te vreesen <rhyme label="c" type="m" corresp="#s6:l5">was</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Gelooft my op dit <rhyme label="c" type="m" corresp="#s6:l5">pas</rhyme>:</l>
        <l id="s6:l8" met="2" type="-+">‘k Sal my <rhyme label="b" type="f" corresp="#s6:l3">bedencken</rhyme>.</l>
      </lg>
    </lg>
  </text>
