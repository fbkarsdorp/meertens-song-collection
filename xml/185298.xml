  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Offert den Heere, <rhyme label="a" type="m">danck</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die d’onbekende, <rhyme label="b" type="f">sende</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Tijt om bekeeren, <rhyme label="a" type="m" corresp="#s1:l1">lanck</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">En als de blende <rhyme label="b" type="f" corresp="#s1:l2">bende</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Met amende, wende, <rhyme label="c" type="m">af</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Gaf, hy dat ghenade, <rhyme label="d" type="f">trade</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Quade, schade, straf, <rhyme label="c" type="m" corresp="#s1:l5">gheblaf</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Dempend’ onder in het <rhyme label="c" type="m" corresp="#s1:l5">graf</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Niemant deurgronden, <rhyme label="a" type="m">can</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hoe zijn Dienaren, <rhyme label="b" type="f">waren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ghetroost van stonden, <rhyme label="a" type="m" corresp="#s2:l1">an</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Laet nu beswaren, <rhyme label="b" type="f" corresp="#s2:l2">varen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">s’herten snaren, sparen, <rhyme label="c" type="m">vliet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Siet, dat wy beginnen, <rhyme label="d" type="f">winnen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Binnen, sinnen, niet, <rhyme label="c" type="m" corresp="#s2:l5">verdriet</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Maer blyschap door een nieu <rhyme label="c" type="m" corresp="#s2:l5">liet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Loven wy souden, <rhyme label="a" type="m">Godt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Al met besneden, <rhyme label="b" type="f">reden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Niet met hem houden, <rhyme label="a" type="m" corresp="#s3:l1">spot</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Noch in die seden, <rhyme label="b" type="f" corresp="#s3:l2">treden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Soo voorleden, deden, <rhyme label="c" type="m">som</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Stom, afgodisch leven, <rhyme label="d" type="f">dreven</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Bleven, even, dom, <rhyme label="c" type="m" corresp="#s3:l5">daerom</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Mijt alsulcke weghen, <rhyme label="c" type="m" corresp="#s3:l5">crom</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Siet hoe hy toonen, <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Sijn wel ghelegen <rhyme label="b" type="f">wegen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hy salse loonen <rhyme label="a" type="m" corresp="#s4:l1">quaet</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Al die daer teghen, <rhyme label="b" type="f" corresp="#s4:l2">pleghen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Toegeneghen, segen, <rhyme label="c" type="m">vry</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Sy, doet veel oorsaken, <rhyme label="d" type="f">smaken</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Spraken, maken, wy, waer <rhyme label="c" type="m" corresp="#s4:l5">by</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Noch niet is volpresen <rhyme label="c" type="m" corresp="#s4:l5">hy</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer prijs des Vaders, <rhyme label="a" type="m">biet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wanneer wy rijcken, <rhyme label="b" type="f">blijcken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">In hem mitsgaders, <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Met ommekijcken, <rhyme label="b" type="f" corresp="#s5:l2">wijcken</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Noch ghelijcken, slijcken, <rhyme label="c" type="m">soch</rhyme>.</l>
        <l id="s5:l6" met="4" type="+-">Och, op dat virtuyten, <rhyme label="d" type="f">spruyten</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Sluyten, buyten, doch, ‘t <rhyme label="c" type="m" corresp="#s5:l5">bedrogh</rhyme>.</l>
        <l id="s5:l8" met="4" type="+-">Der sonden laet ons als <rhyme label="c" type="m" corresp="#s5:l5">noch</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Der Princen hoogen, <rhyme label="a" type="m">raet</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Sal men ‘t vermeeren, <rhyme label="b" type="f">keeren</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Maer vry ghedooghen, <rhyme label="a" type="m" corresp="#s6:l1">laet</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Het werck des Heeren, <rhyme label="b" type="f" corresp="#s6:l2">leeren</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Hem begeeren, eeren, <rhyme label="c" type="m">bet</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Met, rechten der jonghen, <rhyme label="d" type="f">tonghen</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Sprongen, songhen, het, <rhyme label="c" type="m" corresp="#s6:l5">opset</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Van syn Goddelicke <rhyme label="c" type="m" corresp="#s6:l5">wet</rhyme>.</l>
      </lg>
    </lg>
  </text>
