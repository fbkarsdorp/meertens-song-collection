    <melody>Schoonste nimf van het woud</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Wat is 't een groote <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Voor die 't <rhyme label="a" type="m" corresp="#s1:l1">vat</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">Rein en kuis te zijn van <rhyme label="b" type="f">binnen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Te verzaaken 's Vleesches <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Om hier <rhyme label="c" type="m" corresp="#s1:l4">rust</rhyme></l>
        <l id="s1:l6" met="4" type="+-">In 't gemoed, by God, te <rhyme label="b" type="f" corresp="#s1:l3">winnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Schoon d' onkuische zig <rhyme label="a" type="m">verbeeld</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Enk'le <rhyme label="a" type="m" corresp="#s2:l1">weeld</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">'t Is geen waare vreugd, maar <rhyme label="b" type="f">loogen</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Hy die 't hart daar heenen <rhyme label="c" type="m">wend</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Vind in 't <rhyme label="c" type="m" corresp="#s2:l4">end'</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Zig te jammerlijk <rhyme label="b" type="f" corresp="#s2:l3">bedroogen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maar die daar van zig <rhyme label="a" type="m">vermijd</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">En <rhyme label="a" type="m" corresp="#s3:l1">besnijd</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Hem inwendig, schoon met <rhyme label="b" type="f">smerte</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Hy gevoeld, hoe d' Heer <rhyme label="c" type="m">toe-zeid</rhyme></l>
        <l id="s3:l5" met="2" type="+-"><rhyme label="c" type="m" corresp="#s3:l4">Zaaligheid</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Aan de rein kuische <rhyme label="b" type="f" corresp="#s3:l3">herten</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Herten, die van <rhyme label="a" type="m">slaavernij</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Los en <rhyme label="a" type="m" corresp="#s4:l1">vry</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Deeze aard, alleen <rhyme label="b" type="f">naa-jaagen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dat z' ont-leegd van 's vleesches <rhyme label="c" type="m">weeld</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-"><rhyme label="c" type="m" corresp="#s4:l4">On-verdeeld</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Goode dienen en <rhyme label="b" type="f" corresp="#s4:l3">behaagen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Hier-om buig ik my, o <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s5:l2" met="2" type="+-">Voor U <rhyme label="a" type="m" corresp="#s5:l1">neer</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">O versterker van de <rhyme label="b" type="f">swakken</rhyme>!</l>
        <l id="s5:l4" met="4" type="+-">Op dat ik des vleesches <rhyme label="c" type="m">zin</rhyme></l>
        <l id="s5:l5" met="2" type="+-"><rhyme label="c" type="m" corresp="#s5:l4">Over-win</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Laat uw hulp my niet <rhyme label="b" type="f" corresp="#s5:l3">ont-zakken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'k Heb gemaakt een <rhyme label="a" type="m">oog-verbond</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">En met <rhyme label="a" type="m" corresp="#s6:l1">mond</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Om die naa Uw wil te <rhyme label="b" type="f">rigten</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Geef dat ik met d' <rhyme label="c" type="m">oogen-leen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Of met <rhyme label="c" type="m" corresp="#s6:l4">reen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Noit mijn zelf of and'r' <rhyme label="b" type="f" corresp="#s6:l3">ont-stigte</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hoed mijn zinnen en <rhyme label="a" type="m">gedagt</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Door uw <rhyme label="a" type="m" corresp="#s7:l1">wagt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Datze 't herte noit <rhyme label="b" type="f">verlokken</rhyme>;</l>
        <l id="s7:l4" met="4" type="+-">Dat ik noit van binnen <rhyme label="c" type="m">voe</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Maar <rhyme label="c" type="m" corresp="#s7:l4">uit-roe</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Al wat wellust aan kan <rhyme label="b" type="f" corresp="#s7:l3">fokken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Trek mijn liefde van der <rhyme label="a" type="m">aard</rhyme></l>
        <l id="s8:l2" met="2" type="+-"><rhyme label="a" type="m" corresp="#s8:l1">Heemel-waard</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Tot U en die zaal'ge <rhyme label="b" type="f">erven</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">Laat geduurig daar mijn <rhyme label="c" type="m">geest</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Houden <rhyme label="c" type="m" corresp="#s8:l4">feest</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Zoo zal aardze lust <rhyme label="b" type="f" corresp="#s8:l3">versterven</rhyme>.</l>
      </lg>
    </lg>
  </text>
