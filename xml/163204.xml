    <tags/>
    <melody>Hier heeft mij Rozemond bescheiden</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Waer zyn nu de noble <rhyme label="a" type="f">Basen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Beminnaers van de eed’len <rhyme label="b" type="m">Wyn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De Slypers van de <rhyme label="a" type="f" corresp="#s1:l1">Diamanten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">‘t is of zy uit de Wereld <rhyme label="b" type="m" corresp="#s1:l2">zyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Des Somers ziet mense met <rhyme label="a" type="f">troepen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Na buiten om te Kolven <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer nu hoort men gestadig <rhyme label="a" type="f" corresp="#s2:l1">roepen</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Och waere wy in <rhyme label="b" type="m" corresp="#s2:l2">Indiaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En die zig zelfs wil <rhyme label="a" type="f">diverteeren</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Een Draeimeid zet men op de <rhyme label="b" type="m">schoot</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Nu is het weg met al u <rhyme label="a" type="f" corresp="#s3:l1">begasie</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">De Slypers hebbe zelfs geen <rhyme label="b" type="m" corresp="#s3:l2">Broot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Waer zyn nu al haer <rhyme label="a" type="f">Dilikatesse</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Snakke na een Pyp <rhyme label="b" type="m">Toebak</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">In plaets van rooije Bengaelsche <rhyme label="a" type="f" corresp="#s4:l1">Flesse</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Moete zy na de <rhyme label="b" type="m" corresp="#s4:l2">Reegebak</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nu moete zy Amsterdam <rhyme label="a" type="f">verlaten</rhyme>:</l>
        <l id="s5:l2" met="4" type="-+">En vaere na Oostinje <rhyme label="b" type="m">toe</rhyme></l>
        <l id="s5:l3" met="4" type="-+">En doen een Reisie van zeven <rhyme label="a" type="f" corresp="#s5:l1">Iaeren</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Dan binne zy het vare <rhyme label="b" type="m" corresp="#s5:l2">moe</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Als zy dan tuys benne <rhyme label="a" type="f">gekoomen</rhyme>:</l>
        <l id="s6:l2" met="4" type="-+">Brengt zy mee een stukkie <rhyme label="b" type="m">Sis</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Dan zwieren zy by nagt en <rhyme label="a" type="f" corresp="#s6:l1">daegen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Tot dat haer Geltje weer op <rhyme label="b" type="m" corresp="#s6:l2">is</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Slypers ik wil u het beste <rhyme label="a" type="f">wensche</rhyme>:</l>
        <l id="s7:l2" met="4" type="-+">Schreid niet al was gy moeder <rhyme label="b" type="m">naekt</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Het is maer loon van zulke <rhyme label="a" type="f" corresp="#s7:l1">mensche</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Een Draeimeid heeft dit lied <rhyme label="b" type="m" corresp="#s7:l2">gemaekt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
