<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>51773</id>
    <date>
      <year-start>1803</year-start>
      <year-end>1803</year-end>
    </date>
    <tags>
      <tag translation="murder song">moordlied</tag>
    </tags>
    <melody>Biron</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wat kan de <rhyme label="a" type="m">Hoeremin</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">in 't Huwlyk al <rhyme label="b" type="f">verwekken</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe doet ze 't zondig <rhyme label="c" type="m">hart</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Met schuldloos bloed <rhyme label="b" type="f" corresp="#s1:l2">bevlekken</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">De Booswicht steekt zyn <rhyme label="d" type="m">hand</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gegeeven in den <rhyme label="e" type="m">trouw</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Door Satans snode <rhyme label="f" type="m">list</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Als Moordenaar aan zyn <rhyme label="e" type="m" corresp="#s1:l6">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'t Is Janzen die zyn <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Aan vreemde hoer deed <rhyme label="b" type="f">schenken</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Die nog aan eed en <rhyme label="c" type="m">plicht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Omtrent zyn Vrouw wil <rhyme label="b" type="f" corresp="#s2:l2">denken</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Die wreed, zyn handen <rhyme label="d" type="m">slaat</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Aan het onschuldigst <rhyme label="e" type="m">bloed</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En in een Vrouwe <rhyme label="f" type="m">borst</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Gelyk een Moorder <rhyme label="e" type="m" corresp="#s2:l6">woed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">ô God! zult gy dit <rhyme label="a" type="m">kwaad</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">dan straffeloos <rhyme label="b" type="f">gedoogen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Het bloed eens echte <rhyme label="c" type="m">Vrouw</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Schreeuwd wraak tot u hier <rhyme label="b" type="f" corresp="#s3:l2">boven</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Alschoon dit Monster <rhyme label="d" type="m">vlucht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">'t Geridzel van een <rhyme label="e" type="m">blad</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Jaagt reeds zyn bange <rhyme label="f" type="m">Ziel</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Op 's Waerelds <rhyme label="e" type="m" corresp="#s3:l6">Leevenspad</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy raakt nu <rhyme label="a" type="m">eindelyk</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">In 's Rechters wyze <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Een Moorschavot zal 't <rhyme label="c" type="m">hoofd</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ontcierd door zonde <rhyme label="b" type="f" corresp="#s4:l2">schande</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">doen vallen, daar het <rhyme label="d" type="m">zwaard</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Aan hem vergelding <rhyme label="e" type="m">geeft</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Tot straf die zyne <rhyme label="f" type="m">trouw</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Met bloed bezoedeld <rhyme label="e" type="m" corresp="#s4:l6">heeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Beeft Zondaar valt ter <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En denk om 't eeuwig <rhyme label="b" type="f">leeven</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Het zwaard word op Gods <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Voor u reeds <rhyme label="b" type="f" corresp="#s5:l2">opgeheeven</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Beef, val u God te <rhyme label="d" type="m">voet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En eerd zyn wyze <rhyme label="e" type="m">wet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">die voor een Vrouwe <rhyme label="f" type="m">moord</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Ook straffen heeft <rhyme label="e" type="m" corresp="#s5:l6">gezet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maar neen geen steen kan <rhyme label="a" type="m">zig</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Als Janzens hart <rhyme label="b" type="f">verstyven</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Metaal zal eerder <rhyme label="c" type="m">nog</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hoe hard, nog buigzaam <rhyme label="b" type="f" corresp="#s6:l2">blyven</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Hy spot met <rhyme label="d" type="m">Eeuwigheid</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Met Leeraars wyze <rhyme label="e" type="m">raad</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Verhinderd telkens 't <rhyme label="f" type="m">zwaard</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">dat opgeheeven <rhyme label="e" type="m" corresp="#s6:l6">staat</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">dan keerd, dan wend, dan <rhyme label="a" type="m">vald</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hy om de straf te <rhyme label="b" type="f">ontwyken</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Hoe zal zyn snode <rhyme label="c" type="m">Ziel</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">door zonden niet <rhyme label="b" type="f" corresp="#s7:l2">bezwyken</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Neen Satans magt heeft <rhyme label="d" type="m">hem</rhyme></l>
        <l id="s7:l6" met="3" type="-+">In zyne klaauw <rhyme label="e" type="m">verward</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">dat hy zig tegens <rhyme label="f" type="m">God</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">En zyne Wet <rhyme label="e" type="m" corresp="#s7:l6">verhard</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">de Rechters die het <rhyme label="a" type="m">Recht</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">der God en Menschheid, <rhyme label="b" type="f">minne</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Zien zig genoodzaakt <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Op nieuw te leyden <rhyme label="b" type="f" corresp="#s8:l2">binnen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En daar door zyn <rhyme label="d" type="m">gewoel</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Het strafzwaard is <rhyme label="e" type="m">mislukt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Is 't dat hy voor de <rhyme label="f" type="m">Koord</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Zyn Hoofd tog eindelyk <rhyme label="e" type="m" corresp="#s8:l6">bukt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">daar hangt nu 't <rhyme label="a" type="m">schouwtoneel</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Van ongehoorde <rhyme label="b" type="f">zonden</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">daar hangt hy die zyn <rhyme label="c" type="m">trouw</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Met Moorden heeft <rhyme label="b" type="f" corresp="#s9:l2">geschonden</rhyme></l>
        <l id="s9:l5" met="3" type="-+">daar hangt hy als een <rhyme label="d" type="m">pest</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">der Maatschappy <rhyme label="e" type="m">onwaard</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En met zyn zondig <rhyme label="f" type="m">lyf</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Verdwynd zyn naam van de <rhyme label="e" type="m" corresp="#s9:l6">Aard</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">ô Mogt zyn arme <rhyme label="a" type="m">Ziel</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">In 's laastens leevens <rhyme label="b" type="f">snikken</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">In groote <rhyme label="c" type="m">zondenschuld</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Voor eeuwig niet <rhyme label="b" type="f" corresp="#s10:l2">verstikken</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Mogt nog zyn misdaad <rhyme label="d" type="m">hem</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Op een vernederd <rhyme label="e" type="m">hart</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Vergeeven zyn ô <rhyme label="f" type="m">God</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">In 's Heilands lydens <rhyme label="e" type="m" corresp="#s10:l6">smart</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Wil Zondaars nooit u <rhyme label="a" type="m">Ziel</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Aan Satans listen <rhyme label="b" type="f">geeven</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Wil in den <rhyme label="c" type="m">Echtenstaat</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Voor God in ootmoet <rhyme label="b" type="f" corresp="#s11:l2">leeven</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Laat zagte <rhyme label="d" type="m">lydzaamheid</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">getuigen in uw <rhyme label="e" type="m">trouw</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">dat gy geen ander <rhyme label="f" type="m">mind</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">dan uwe Echte <rhyme label="e" type="m" corresp="#s11:l6">Vrouw</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
