    <melody>Richt mich dass ich es m√∂ge leiden</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ordeelt dat ickt mach <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Nae myne onnooselheyt <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Alle sonden woud ick gheren <rhyme label="a" type="f" corresp="#s1:l1">myden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En leuen nae uwe <rhyme label="b" type="m" corresp="#s1:l2">leer</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Godt mach icks wel <rhyme label="c" type="f">betrouwen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ende seker op hem <rhyme label="d" type="m">staen</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Mijn saken op hem <rhyme label="c" type="f" corresp="#s1:l5">bouwen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ten heeft my noch noyt <rhyme label="c" type="f" corresp="#s1:l5">gherouwen</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Soo mach ick altijts <rhyme label="d" type="m" corresp="#s1:l6">bestaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ondersoeckt doch mijn <rhyme label="a" type="f">nieren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met tvier beproeft mijn <rhyme label="b" type="m">hert</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">In uwen wech wilt my <rhyme label="a" type="f" corresp="#s2:l1">stieren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat is mijns herten <rhyme label="b" type="m" corresp="#s2:l2">beghert</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Dat ghy zijt waerachtich en soo <rhyme label="c" type="f">goet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dat neme ick voor my <rhyme label="d" type="m">alleen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dies staet dan alle mijn <rhyme label="c" type="f" corresp="#s2:l5">ghemoet</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Om te temmen, mijn vleesch, en <rhyme label="c" type="f" corresp="#s2:l5">bloet</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">In allen mijn doen, en laten <rhyme label="d" type="m" corresp="#s2:l6">ghemeen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick en souder niet gheren by <rhyme label="a" type="f">woonen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat valsche liedens <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Die hun daghelijcx <rhyme label="a" type="f" corresp="#s3:l1">verthoonen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Int braggeren en ydelen <rhyme label="b" type="m" corresp="#s3:l2">schijn</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Veel min by die zijn in <rhyme label="c" type="f">cluysen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Salmen my vinden <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die eeten der Weduwen <rhyme label="c" type="f" corresp="#s3:l5">huysen</rhyme> ,</l>
        <l id="s3:l8" met="3" type="-+">Heymlijck sy listich <rhyme label="c" type="f" corresp="#s3:l5">muysen</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Te doen deuangelie <rhyme label="d" type="m" corresp="#s3:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ick haet soo seer die <rhyme label="a" type="f">Kercke</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Van den valschen Gheestelijcken <rhyme label="b" type="m">staet</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Van leecken ende <rhyme label="a" type="f" corresp="#s4:l1">Clercken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Des Paus Ghemeynte <rhyme label="b" type="m" corresp="#s4:l2">quaet</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Oock alle die hun doen, en <rhyme label="c" type="f">dichten</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Met haren Godloosen <rhyme label="d" type="m">mondt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Palleeren, en allen hun <rhyme label="c" type="f" corresp="#s4:l5">stichten</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Alsment siet by den <rhyme label="c" type="f" corresp="#s4:l5">lichten</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Soo en hevet doch gheenen <rhyme label="d" type="m" corresp="#s4:l6">grondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Qualijck can ick by hun <rhyme label="a" type="f">gheblijuen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Godt gheef waer ick comme te <rhyme label="b" type="m">landt</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Al soudense my <rhyme label="a" type="f" corresp="#s5:l1">verdrijuen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In onschult wasch ick noch mijn <rhyme label="b" type="m" corresp="#s5:l2">handt</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Om uwen Outaer <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Daer gaen ick ronsom <rhyme label="d" type="m">om</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Van daer en sal ick niet <rhyme label="c" type="f" corresp="#s5:l5">keeren</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Noch teghen tcruys my stellen <rhyme label="c" type="f" corresp="#s5:l5">seere</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">tot dat ick tot u <rhyme label="d" type="m" corresp="#s5:l6">com</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Daer sal ick eerst <rhyme label="a" type="f">vernemen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Het danckbaer <rhyme label="b" type="m">lofghesanck</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Dwelck ick my niet en sal <rhyme label="a" type="f" corresp="#s6:l1">schaemen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Alle  mijn leuen <rhyme label="b" type="m" corresp="#s6:l2">lanck</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Ja selfs vercondighen <rhyme label="c" type="f">mede</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">U groote beroemde <rhyme label="d" type="m">daet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En alle de <rhyme label="c" type="f" corresp="#s6:l5">wonderlijckhede</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Die Christus selue <rhyme label="c" type="f" corresp="#s6:l5">dede</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Ende bewees tot onser <rhyme label="d" type="m" corresp="#s6:l6">baet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Uwen hof, en huys, staet <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Daer ghy in woonende <rhyme label="b" type="m">zijt</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Uwen Tabernakel, en <rhyme label="a" type="f" corresp="#s7:l1">Troone</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Daer in men u eert <rhyme label="b" type="m" corresp="#s7:l2">altijt</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Die selfste plaetz en <rhyme label="c" type="f">stede</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Bemin ick van herten <rhyme label="d" type="m">grondt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">In u woordt staetse <rhyme label="c" type="f" corresp="#s7:l5">beschreuen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Mijn toeuerlaet is sy <rhyme label="c" type="f" corresp="#s7:l5">ghebleuen</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Ghelijck ghijt segt met uwen <rhyme label="d" type="m" corresp="#s7:l6">mondt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Daerom wilt niet <rhyme label="a" type="f">toegheuen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Noch consenteren <rhyme label="b" type="m">schoon</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Dat mijn Siel, lijf, en <rhyme label="a" type="f" corresp="#s8:l1">leuen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ontfanghen sou den <rhyme label="b" type="m" corresp="#s8:l2">loon</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Der sonden, al niet den <rhyme label="c" type="f">honden</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Noch met die bloetgierighe <rhyme label="d" type="m">rot</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Want u passie en u <rhyme label="c" type="f" corresp="#s8:l5">wonden</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">En wat aen u wordt <rhyme label="c" type="f" corresp="#s8:l5">gheuonden</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Dat blameren sy met <rhyme label="d" type="m" corresp="#s8:l6">spodt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Tsy buyten, oft oock <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">In vrede, oft in <rhyme label="b" type="m">strijt</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Met vyanden, oft met <rhyme label="a" type="f" corresp="#s9:l1">vrienden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Het sy nae, breet, oft <rhyme label="b" type="m" corresp="#s9:l2">wijdt</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Het bloetstorten sy <rhyme label="c" type="f">drijuen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">De Heeren, en oock die <rhyme label="d" type="m">Knecht</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Voor hun can niemandt <rhyme label="c" type="f" corresp="#s9:l5">blijuen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Sy willen die al <rhyme label="c" type="f" corresp="#s9:l5">ontlijuen</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Die segghen: datse doen <rhyme label="d" type="m" corresp="#s9:l6">onrecht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Gheen quaet en is haren <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Te groot, noch oock te <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Tghelt verblindtse, dat het is <rhyme label="a" type="f" corresp="#s10:l1">schande</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">En oft oock al wel ghedaen <rhyme label="b" type="m" corresp="#s10:l2">waer</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Dat sy hun so laten <rhyme label="c" type="f">besteeken</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En nemen vol hun <rhyme label="d" type="m">handt</rhyme>:</l>
        <l id="s10:l7" met="3" type="-+">Trecht, Tvonnis, Pays, sy <rhyme label="c" type="f" corresp="#s10:l5">breeken</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">En met arghe listighe <rhyme label="c" type="f" corresp="#s10:l5">treeken</rhyme>,</l>
        <l id="s10:l9" met="3" type="-+">Regieren sy tvolck ende <rhyme label="d" type="m" corresp="#s10:l6">dlandt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Hoe soud ick dan connen <rhyme label="a" type="f">ontsluypen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Wt sulcken grooten <rhyme label="b" type="m">bedwanck</rhyme>:</l>
        <l id="s11:l3" met="3" type="-+">Secretelijck wech gaen <rhyme label="a" type="f" corresp="#s11:l1">druypen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Twil my doch vallen te <rhyme label="b" type="m" corresp="#s11:l2">lanck</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Uwer gnaden wil ickt <rhyme label="c" type="f">beueelen</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Dat ick voorts, glijck tot noch <rhyme label="d" type="m">toe</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Van hun quaet niet met en <rhyme label="c" type="f" corresp="#s11:l5">deele</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Aen u houd ick my <rhyme label="c" type="f" corresp="#s11:l5">gheheele</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">Met onnooselheyt ick dat <rhyme label="d" type="m" corresp="#s11:l6">doe</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Mijnen voet en sal niet <rhyme label="a" type="f">wijcken</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Hy staet op de rechte <rhyme label="b" type="m">baen</rhyme>:</l>
        <l id="s12:l3" met="3" type="-+">Hoochmoet, vernuft, en dier <rhyme label="a" type="f" corresp="#s12:l1">ghelijcken</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Maken twist, en dwalinghe <rhyme label="b" type="m" corresp="#s12:l2">saen</rhyme>:</l>
        <l id="s12:l5" met="3" type="-+">Daer af sal ick zijn <rhyme label="c" type="f">ontslaghen</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Als ick van u Heer <rhyme label="d" type="m">alleyn</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Lof, prijs, en eer, sal <rhyme label="c" type="f" corresp="#s12:l5">saghen</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Stoutlijck ende <rhyme label="c" type="f" corresp="#s12:l5">onuerslaghen</rhyme>,</l>
        <l id="s12:l9" met="3" type="-+">Voor den Raet, en dgheheele <rhyme label="d" type="m" corresp="#s12:l6">Ghemeyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
