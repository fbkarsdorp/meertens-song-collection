<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184934</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Rozemond die lag gedoken</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SOud' hem niet gewapent <rhyme label="a" type="f">houden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Een voorsichtigh <rhyme label="b" type="m">opper-heldt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die bericht was van <rhyme label="a" type="f" corresp="#s1:l1">vertrouden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat de Vyandt was in't <rhyme label="b" type="m" corresp="#s1:l2">veldt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Kundigh van sijn raedt <rhyme label="c" type="m">besluyt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Stack den rooden standert <rhyme label="c" type="m" corresp="#s1:l5">uyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Uwen Vyandt Christen <rhyme label="a" type="f">Ziele</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Weet waer ghy het swackste <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Sit d'oprechten op de <rhyme label="a" type="f" corresp="#s2:l1">hielen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Levert haer gedurigh <rhyme label="b" type="m" corresp="#s2:l2">strijdt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Waeckt bespiet en <rhyme label="c" type="m">ondermijnt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Daer de schilt wacht niet <rhyme label="c" type="m" corresp="#s2:l5">verschijnt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Treckt dan Christelijcke <rhyme label="a" type="f">Ridder</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Treckt Gods wapen rusting <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat de bloode beefd' en <rhyme label="a" type="f" corresp="#s3:l1">sidder</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Ghy gelijck een rustigh <rhyme label="b" type="m" corresp="#s3:l2">Man</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Drillinde stantvastheydt <rhyme label="c" type="m">speer</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Uw erf-vyandt gaet te <rhyme label="c" type="m" corresp="#s3:l5">keer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laet de Hel-leeuw briesschen <rhyme label="a" type="f">brullen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Met sijn klaeuwen randen <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Godt getrouwe stijders <rhyme label="a" type="f" corresp="#s4:l1">sullen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Veyligen der deughden <rhyme label="b" type="m" corresp="#s4:l2">baen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Iesus 't doorgestreden <rhyme label="c" type="m">hooft</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">d'Overwinningh haer <rhyme label="c" type="m" corresp="#s4:l5">belooft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">d'Opper-veldt Heer is door <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Armoe, neerderigheyt, en <rhyme label="b" type="m">smaedt</rhyme>!</l>
        <l id="s5:l3" met="4" type="+-">Ingegaen in 't eeuwigh <rhyme label="a" type="f" corresp="#s5:l1">blijde</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Lijden is de <rhyme label="b" type="m" corresp="#s5:l2">dageraedt</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Die voor't heylrijck <rhyme label="c" type="m">middaghlicht</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Van de Son der vreughde <rhyme label="c" type="m" corresp="#s5:l5">licht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Strijdt dan dapper in't <rhyme label="a" type="f">beginnen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">In het midden in de <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">d'Eere kranssen zijn te <rhyme label="a" type="f" corresp="#s6:l1">winnen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Na de doorgestaene <rhyme label="b" type="m" corresp="#s6:l2">noodt</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Onverwelckbre <rhyme label="c" type="m">louwer-blaen</rhyme>!</l>
        <l id="s6:l6" met="4" type="+-">Hangen aen het end der <rhyme label="c" type="m" corresp="#s6:l5">baen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
