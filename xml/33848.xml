  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Iesus, met sijn Jongers <rhyme label="a" type="m">t'saem</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gegaen is na de <rhyme label="b" type="f">Steede</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Te Naïm, en met hem <rhyme label="a" type="m" corresp="#s1:l1">quaem</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Een groote schare <rhyme label="b" type="f" corresp="#s1:l2">meede</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als hy omtrent de poorte <rhyme label="a" type="m">gingh</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Soo worden daer <rhyme label="b" type="f">gedragen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Het Lijk van eenen <rhyme label="a" type="m" corresp="#s2:l1">Jongelingh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waer by de Moêr gingh <rhyme label="b" type="f" corresp="#s2:l2">klagen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De Moeder was een <rhyme label="a" type="m">Weduw-Vrouw</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Veel lieden uyt de <rhyme label="b" type="f">Steede</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Om haer te troosten in den <rhyme label="a" type="m" corresp="#s3:l1">rouw</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Meedoogend' gingen <rhyme label="b" type="f" corresp="#s3:l2">meede</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Het was voor haer een droeve <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Het was haer eenigh <rhyme label="b" type="f">Soone</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dierhalven sy haer droefheydt <rhyme label="a" type="m" corresp="#s4:l1">groot</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met reeden wel moght <rhyme label="b" type="f" corresp="#s4:l2">toone</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als Iesus dese Vrouwe <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Voelt sijn <rhyme label="b" type="f">barmhartigheeden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En seydt tot haer, en weent togh <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En is wat na'er <rhyme label="b" type="f" corresp="#s5:l2">getreeden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sijn handt hy op de doodt-kist <rhyme label="a" type="m">leydt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">De Dragers stonden <rhyme label="b" type="f">stille</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">'k Segh u, Jonghman, hy tot hem <rhyme label="a" type="m" corresp="#s6:l1">seydt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Staet op na mijnen <rhyme label="b" type="f" corresp="#s6:l2">wille</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den dooden over-eynde <rhyme label="a" type="m">rees</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En sprak met sijne <rhyme label="b" type="f">tale</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">De lieden vol van groote <rhyme label="a" type="m" corresp="#s7:l1">vrees</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Godt loofden al te <rhyme label="b" type="f" corresp="#s7:l2">male</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sy seyden, ons is <rhyme label="a" type="m">opgestaen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Een groot Propheet des <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Aldus den goeden Godt <rhyme label="a" type="m" corresp="#s8:l1">voortaen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Sijn volk komt <rhyme label="b" type="f" corresp="#s8:l2">visiteeren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wanneer ons siel door sond' is <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Heer, wilt die weer <rhyme label="b" type="f">verwecken</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En komt ons by in sulken <rhyme label="a" type="m" corresp="#s9:l1">noodt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Wilt ons uyt sonden <rhyme label="b" type="f" corresp="#s9:l2">trecken</rhyme>.</l>
      </lg>
    </lg>
  </text>
