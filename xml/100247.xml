    <melody>Breek uw pijlen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WEste wind, die zoo zoet'lyk <rhyme label="a" type="m">dwaalt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En die op 't veld en boomen <rhyme label="a" type="m" corresp="#s1:l1">daalt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Geeft gy niet de bloem haar <rhyme label="b" type="m">geur</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Als gyze voert het lugtje <rhyme label="b" type="m" corresp="#s1:l3">deur</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Is 't iets dat u bewoogen <rhyme label="a" type="m">heeft</rhyme>;</l>
        <l id="s2:l2" met="4" type="-+">Of dat 't melyden u <rhyme label="a" type="m" corresp="#s2:l1">aankleeft</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Koomt en valt in deez <rhyme label="b" type="m">vallei</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Waare rust daar ik om <rhyme label="b" type="m" corresp="#s2:l3">schrei</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vliegt heen, en brengt myn <rhyme label="a" type="m">Minneklagt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Aan haar, eer ik van droefheid <rhyme label="a" type="m" corresp="#s3:l1">smagt</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Die 'k uitstort in 't groene <rhyme label="b" type="m">woud</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Waar gy veeltyds u <rhyme label="b" type="m" corresp="#s3:l3">onthoud</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ja, steld te werk uw' <rhyme label="a" type="m">dievery'</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Vliegt op de lipjes als een <rhyme label="a" type="m" corresp="#s4:l1">By</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Van myn bemind, en daar van <rhyme label="b" type="m">rooft</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">D' Reuk die hert en ziel <rhyme label="b" type="m" corresp="#s4:l3">verdooft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
