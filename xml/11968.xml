    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>Schoonste nimf van het woud</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">IDer een niet soo 't <rhyme label="a" type="m">behoort</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Hoort Gods <rhyme label="a" type="m" corresp="#s1:l1">Woort</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Schoon sy dagh'lijcks in de <rhyme label="b" type="f">Kercken</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Komen, naeder ooghen <rhyme label="c" type="m">schijn</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Om te <rhyme label="c" type="m" corresp="#s1:l4">sijn</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Onderwesen in Gods <rhyme label="b" type="f" corresp="#s1:l3">wercken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Veele vintmen die slechs <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Om 't <rhyme label="a" type="m" corresp="#s2:l1">welstaen</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Om den hoop wat te <rhyme label="b" type="f">vermeeren</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Of op datmen haer voor <rhyme label="c" type="m">slecht</rhyme></l>
        <l id="s2:l5" met="2" type="+-">En <rhyme label="c" type="m" corresp="#s2:l4">oprecht</rhyme></l>
        <l id="s2:l6" met="4" type="+-">En Gods-dienst volck sou <rhyme label="b" type="f" corresp="#s2:l3">eeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Veele sijnder groot van <rhyme label="a" type="m">moet</rhyme>;</l>
        <l id="s3:l2" met="2" type="+-">Deser <rhyme label="a" type="m" corresp="#s3:l1">voet</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Nerghens om Gods huys <rhyme label="b" type="f">bewand'ren</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Dan om door haer pracht en <rhyme label="c" type="m">eer</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Als een <rhyme label="c" type="m" corresp="#s3:l4">Heer</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Uyt te muyten boven <rhyme label="b" type="f" corresp="#s3:l3">and'ren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Veel een Spongie sijn <rhyme label="a" type="m">ghelijck</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Die het <rhyme label="a" type="m" corresp="#s4:l1">slijck</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Alsoo wel alst schoon <rhyme label="b" type="f">insuyghen</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Als sy hooren quaet en <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Haer <rhyme label="c" type="m" corresp="#s4:l4">ghemoet</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Sich tot beyde stracx sal <rhyme label="b" type="f" corresp="#s4:l3">buyghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Somtijts ymant sich <rhyme label="a" type="m">vertoont</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Uyt <rhyme label="a" type="m" corresp="#s5:l1">ghewoont</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Of by dees of die <rhyme label="b" type="f">ghesintheyt</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Nae dat dese meer of <rhyme label="c" type="m">min</rhyme></l>
        <l id="s5:l5" met="2" type="+-">In sijn <rhyme label="c" type="m" corresp="#s5:l4">sin</rhyme></l>
        <l id="s5:l6" met="4" type="+-">En in 's herten gront bemint <rhyme label="b" type="f" corresp="#s5:l3">leyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">d' Een ghelijck is een <rhyme label="a" type="m">uurglas</rhyme>;</l>
        <l id="s6:l2" met="2" type="+-">Die soo <rhyme label="a" type="m" corresp="#s6:l1">ras</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Uyt sijn sinnen heeft <rhyme label="b" type="f">verlooren</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Soo haest als hy 't Heeren <rhyme label="c" type="m">woort</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Hadt <rhyme label="c" type="m" corresp="#s6:l4">ghehoort</rhyme></l>
        <l id="s6:l6" met="4" type="+-">In Gos Tempel met sijn <rhyme label="b" type="f" corresp="#s6:l3">ooren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">And're droesem sijn <rhyme label="a" type="m">ghelijck</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Die het <rhyme label="a" type="m" corresp="#s7:l1">slijck</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Van den wijn insuyght; soo <rhyme label="b" type="f">meden</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Komt haer eenigh goet te <rhyme label="c" type="m">voor</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">'t Vloeyt stracx <rhyme label="c" type="m" corresp="#s7:l4">door</rhyme>:</l>
        <l id="s7:l6" met="4" type="+-">Sy onthouden quade <rhyme label="b" type="f" corresp="#s7:l3">reden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Som'ghe menschen beelden <rhyme label="a" type="m">aff</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Haer die 't <rhyme label="a" type="m" corresp="#s8:l1">kaff</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Van de goede vruchten <rhyme label="b" type="f">scheyde</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Hoort ghy beyde goet en <rhyme label="c" type="m">quaet</rhyme></l>
        <l id="s8:l5" met="2" type="+-">'t Laetste <rhyme label="c" type="m" corresp="#s8:l4">haet</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">'t Eerst u hert tot deucht <rhyme label="b" type="f" corresp="#s8:l3">bereyde</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">'s Heeren Huys moet ghy <rhyme label="a" type="m">betre'en</rhyme></l>
        <l id="s9:l2" met="2" type="+-">Niet <rhyme label="a" type="m" corresp="#s9:l1">alleen</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Om te weten 's Heeren <rhyme label="b" type="f">Wetten</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Maer oock mede, op dat <rhyme label="c" type="m">ghy</rhyme></l>
        <l id="s9:l5" met="2" type="+-">(Als oock <rhyme label="c" type="m" corresp="#s9:l4">wy</rhyme>)</l>
        <l id="s9:l6" met="4" type="+-">Op Gods wegh u hert soud <rhyme label="b" type="f" corresp="#s9:l3">setten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">'t Woort des Heeren yder <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s10:l2" met="2" type="+-">Met <rhyme label="a" type="m" corresp="#s10:l1">ootmoet</rhyme></l>
        <l id="s10:l3" met="4" type="+-">En aendaghtigheyt <rhyme label="b" type="f">aenhooren</rhyme>;</l>
        <l id="s10:l4" met="4" type="+-">Naedemael gheen mensch, maer <rhyme label="c" type="m">Godt</rhyme></l>
        <l id="s10:l5" met="2" type="+-">Sijn <rhyme label="c" type="m" corresp="#s10:l4">ghebodt</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Als een wet ons leyt te <rhyme label="b" type="f" corresp="#s10:l3">vooren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Denckt altijt dat Christi <rhyme label="a" type="m">woort</rhyme></l>
        <l id="s11:l2" met="2" type="+-"><rhyme label="a" type="m" corresp="#s11:l1">Aenghehoort</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">En verstaen, ons <rhyme label="b" type="f">altesamen</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Bint in het ghewiss', dien <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s11:l5" met="2" type="+-">Nae sijn <rhyme label="c" type="m" corresp="#s11:l4">leer</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Gantsch oprecht te <rhyme label="b" type="f" corresp="#s11:l3">ghehoorsaemen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Hy is onsen Godt en <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s12:l2" met="2" type="+-">Die all' <rhyme label="a" type="m" corresp="#s12:l1">eer</rhyme></l>
        <l id="s12:l3" met="4" type="+-">Toebehoort; Wiens Wet <rhyme label="b" type="f">gheweten</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Niet en moet (die <rhyme label="c" type="m">d'heerlijckheyt</rhyme></l>
        <l id="s12:l5" met="2" type="+-">Dien <rhyme label="c" type="m" corresp="#s12:l4">bereyt</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Die Godt vreest, wil sien) <rhyme label="b" type="f" corresp="#s12:l3">vergheten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
