  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ACh broeders wilt v toch <rhyme label="a" type="f">wachten</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Al voor den deesem der <rhyme label="b" type="m">Pharizeen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Want sy Gods woort <rhyme label="a" type="f" corresp="#s1:l1">verachten</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ende tsimpel volck <rhyme label="b" type="m" corresp="#s1:l2">verleen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Tzijn niet dan valsche <rhyme label="c" type="f">Propheten</rhyme></l>
        <l id="s1:l6" met="3" type="-+">So ons in Mattheus <rhyme label="d" type="m">staet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die der wedewen huysen <rhyme label="c" type="f" corresp="#s1:l5">dooreten</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Door haren valschen <rhyme label="d" type="m" corresp="#s1:l6">raet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het zijn niet dan valsche <rhyme label="a" type="f">verleyders</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die de schaepkens bringhen ter <rhyme label="b" type="m">doot</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sy zijn der waerheyts <rhyme label="a" type="f" corresp="#s2:l1">afscheyders</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Door sweert, door brant, door <rhyme label="b" type="m" corresp="#s2:l2">doot</rhyme></l>
        <l id="s2:l5" met="3" type="-+">In haer is niet goets <rhyme label="c" type="f">beuonden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">So Ioannes ons doet <rhyme label="d" type="m">vermaen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Tzijn dieuen en moordenaers <rhyme label="c" type="f" corresp="#s2:l5">beuonden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Die niet ter rechter door in <rhyme label="d" type="m" corresp="#s2:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick ben een goet herder <rhyme label="a" type="f">verheuen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Spreect Christus de Heere <rhyme label="b" type="m">gent</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ick laet voor mijn schaepkens mijn <rhyme label="a" type="f" corresp="#s3:l1">leuen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ende maeck haer mijn rijcke <rhyme label="b" type="m" corresp="#s3:l2">bekent</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Alle die desen herder <rhyme label="c" type="f">bekennen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die moeten hem volghen <rhyme label="d" type="m">fijn</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Om gheen torment van hem <rhyme label="c" type="f" corresp="#s3:l5">wennen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Al komen wy in druck ende <rhyme label="d" type="m" corresp="#s3:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De Coninghen ende Princen der <rhyme label="a" type="f">eerden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sijn teghen ons op <rhyme label="b" type="m">ghestaen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">En teghen Christum vol <rhyme label="a" type="f" corresp="#s4:l1">weerden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als Dauid ons doet <rhyme label="b" type="m" corresp="#s4:l2">vermaen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Ghelijck als arm <rhyme label="c" type="f">slachtschapen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">So moeten wy zijn <rhyme label="d" type="m">bereyt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Al van Babels <rhyme label="c" type="f" corresp="#s4:l5">knapen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Werden wy ter doot <rhyme label="d" type="m" corresp="#s4:l6">gheleyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Den tijt is nv <rhyme label="a" type="f">ghecomen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Na Ioannes tuyghen <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dat sy ons sullen <rhyme label="a" type="f" corresp="#s5:l1">verdomen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">God meynen te dienen <rhyme label="b" type="m" corresp="#s5:l2">voorwaer</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Sy sullen ons <rhyme label="c" type="f">veriaghen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Daer toe in banden <rhyme label="d" type="m">slaen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Dit sietmen van daghen te <rhyme label="c" type="f" corresp="#s5:l5">daghen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Onder Gods kinders aen <rhyme label="d" type="m" corresp="#s5:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Broeders wilt doch wt Babel <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Ende volghen Christus <rhyme label="b" type="m">leer</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ende laet v doch niet <rhyme label="a" type="f" corresp="#s6:l1">verleyden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Door valsche menschen <rhyme label="b" type="m" corresp="#s6:l2">leer</rhyme></l>
        <l id="s6:l5" met="3" type="-+">So wil ick by v <rhyme label="c" type="f">wonen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Spreect Christus die goede <rhyme label="d" type="m">Heer</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Tot v so wil ick haestich <rhyme label="c" type="f" corresp="#s6:l5">comen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Blijft vast aen mijne <rhyme label="d" type="m" corresp="#s6:l6">leer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Alle die Christum willen <rhyme label="a" type="f">volghen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Moeten haer versaken <rhyme label="b" type="m">fijn</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Ende nemen haer cruyce <rhyme label="a" type="f" corresp="#s7:l1">onuerbolghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Ende draghent tallen <rhyme label="b" type="m" corresp="#s7:l2">termijn</rhyme></l>
        <l id="s7:l5" met="3" type="-+">En wilt gheen menschen <rhyme label="c" type="f">vreesen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">So Christus ons doet <rhyme label="d" type="m">vermaen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Hy sal ons haest <rhyme label="c" type="f" corresp="#s7:l5">ghenesen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Dus en wilt van hem niet <rhyme label="d" type="m" corresp="#s7:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ureest niet die dlichaem <rhyme label="a" type="f">dooden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Naer Christus tuyghen <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Ist dat sy ons dit leuen <rhyme label="a" type="f" corresp="#s8:l1">ontblooden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Wy verwachten een beter hier <rhyme label="b" type="m" corresp="#s8:l2">naer</rhyme></l>
        <l id="s8:l5" met="3" type="-+">So laet ons vrymoedich <rhyme label="c" type="f">strijden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Al is het vleesch swaer <rhyme label="d" type="m">belaen</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Christus is by ons tallen <rhyme label="c" type="f" corresp="#s8:l5">tijden</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Ende wil niet van ons <rhyme label="d" type="m" corresp="#s8:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O God Uader ende <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s9:l2" met="3" type="-+">O Conincklicke <rhyme label="b" type="m">maiesteyt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Uertroost ons nv in onsen <rhyme label="a" type="f" corresp="#s9:l1">seere</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Wy die nv om dijne <rhyme label="b" type="m" corresp="#s9:l2">waerheyt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Seer deerlick ligghen <rhyme label="c" type="f">gheuanghen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Daer toe in lijden <rhyme label="d" type="m">groot</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Haer boghen die zijn in <rhyme label="c" type="f" corresp="#s9:l5">ganghen</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Om ons te schieten ter <rhyme label="d" type="m" corresp="#s9:l6">doot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Die dit liedeken eerstmael <rhyme label="a" type="f">dichte</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Ian Uis was synen <rhyme label="b" type="m">naem</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Wt liefden wast dat hijt <rhyme label="a" type="f" corresp="#s10:l1">dichte</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Daer hy Thantwerpen lach <rhyme label="b" type="m" corresp="#s10:l2">gheuaen</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Ghesloten in yseren <rhyme label="c" type="f">banden</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Al om de waerheyt <rhyme label="d" type="m">soet</rhyme></l>
        <l id="s10:l7" met="3" type="-+">God gheue hem als den <rhyme label="c" type="f" corresp="#s10:l5">vallianden</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Totten eynde goeden <rhyme label="d" type="m" corresp="#s10:l6">moet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
