    <melody>Het daagt in de oosten</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">STort nu (mijn ooghjes <rhyme label="a" type="f">teeder</rhyme>)</l>
        <l id="s1:l2" met="3" type="-+">In ’t laeuw gestremt <rhyme label="b" type="m">robijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">U bracke parelen <rhyme label="a" type="f" corresp="#s1:l1">neder</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En menght u saem om <rhyme label="b" type="m" corresp="#s1:l2">myn</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">In dees beeck te doen <rhyme label="c" type="f">sincken</rhyme></l>
        <l id="s1:l6" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s1:l5">verdrincken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want nu dat ick moet <rhyme label="a" type="f">derr’ven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Mijn lief Helranos <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wensch ick niet dan om ’t <rhyme label="a" type="f" corresp="#s2:l1">sterr’ven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Kom Atrop met u <rhyme label="b" type="m" corresp="#s2:l2">schicht</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wilt Cleo met u <rhyme label="c" type="f">banden</rhyme></l>
        <l id="s2:l6" met="2" type="+-">Meê aen <rhyme label="c" type="f" corresp="#s2:l5">randen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wat reên, ha! wreede <rhyme label="a" type="f">Stiris</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Verdoofde ghy mijn <rhyme label="b" type="m">Zon</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">U wreetheydt my te dier <rhyme label="a" type="f" corresp="#s3:l1">is</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Verrader dat ick <rhyme label="b" type="m" corresp="#s3:l2">kon</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Met tanden u <rhyme label="c" type="f">verscheuren</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">’t Sou <rhyme label="c" type="f" corresp="#s3:l5">gebeuren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Geen rust sal ick <rhyme label="a" type="f">aenvaerden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat sweer ick by de <rhyme label="b" type="m">Goon</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Voor dat ick (o mijn <rhyme label="a" type="f" corresp="#s4:l1">waerde</rhyme>)</l>
        <l id="s4:l4" met="3" type="-+">U Moorder (wreedt) doen <rhyme label="b" type="m" corresp="#s4:l2">doon</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dan volgh ick op u <rhyme label="c" type="f">schreden</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">Naer <rhyme label="c" type="f" corresp="#s4:l5">beneden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
