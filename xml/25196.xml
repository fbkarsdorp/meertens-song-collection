  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O reine wijf ghi doet mi <rhyme label="a" type="f">pine</rhyme></l>
        <l id="s1:l2" met="4" type="-+">ghi sijt mire herten <rhyme label="a" type="f" corresp="#s1:l1">medicine</rhyme></l>
        <l id="s1:l3" met="4" type="-+">die door hu leghet <rhyme label="b" type="m">ondervoet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">In droufheden staet mi langhe te <rhyme label="a" type="f" corresp="#s1:l1">sine</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Wildi niet ten wille <rhyme label="a" type="f" corresp="#s1:l1">mine</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Mij vulgeren huwen <rhyme label="b" type="m" corresp="#s1:l3">moet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">ghenaden lief up rechte <rhyme label="a" type="f">minne</rhyme></l>
        <l id="s2:l2" met="4" type="-+">hu gheheel sijn mine vijf <rhyme label="a" type="f" corresp="#s2:l1">sinne</rhyme></l>
        <l id="s2:l3" met="4" type="-+">want ghi hebse in huwe <rhyme label="b" type="m">ghenaden</rhyme></l>
        <l id="s2:l4" met="4" type="-+">ghi sijt mijns herten <rhyme label="a" type="f" corresp="#s2:l1">conighinne</rhyme></l>
        <l id="s2:l5" met="4" type="+-">ontsluut hu herte ende laet mi <rhyme label="a" type="f" corresp="#s2:l1">inne</rhyme></l>
        <l id="s2:l6" met="4" type="+-">of droufheden mach ic niet <rhyme label="b" type="m" corresp="#s2:l3">ontwaden</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">lievelic wijf up rechte <rhyme label="a" type="f">trauwe</rhyme></l>
        <l id="s3:l2" met="4" type="-+">wilt nu corten minen <rhyme label="a" type="f" corresp="#s3:l1">rauwe</rhyme></l>
        <l id="s3:l3" met="4" type="-+">ende laet mi met solace <rhyme label="b" type="m">leven</rhyme></l>
        <l id="s3:l4" met="4" type="-+">sturt uut van der minnen <rhyme label="a" type="f" corresp="#s3:l1">dauwe</rhyme></l>
        <l id="s3:l5" met="4" type="+-">des niddic hu mijns herten <rhyme label="a" type="f" corresp="#s3:l1">vrauwe</rhyme></l>
        <l id="s3:l6" met="4" type="+-">want nemmermeer willic hu <rhyme label="b" type="m" corresp="#s3:l3">begheven</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
