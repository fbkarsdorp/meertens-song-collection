  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HOoghe deught, cieraet der <rhyme label="a" type="f">deughden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Weerdigher dan deuchden <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Schoon' ootmoedicheydt vol <rhyme label="a" type="f" corresp="#s1:l1">vreughden</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Wie is't die recht prijsen <rhyme label="b" type="m" corresp="#s1:l2">sal</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Het vermaeck boven <rhyme label="c" type="m">verstant</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Daer v dal med' is <rhyme label="c" type="m" corresp="#s1:l5">beplant</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die vermakelijcke <rhyme label="a" type="f">goeden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die rivieren die daer <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Zijn Zeen van alle <rhyme label="a" type="f" corresp="#s2:l1">goeden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Van pur honich ende <rhyme label="b" type="m" corresp="#s2:l2">wijn</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Van ghenuchten <rhyme label="c" type="m">over-rijck</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Die daer vloeyen <rhyme label="c" type="m" corresp="#s2:l5">stadelijck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">O Ootmoedicheydt <rhyme label="a" type="f">verheven</rhyme>!</l>
        <l id="s3:l2" met="4" type="+-">Wat gheluck is't daer te <rhyme label="b" type="m">staen</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Daer de sielen in v <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Vyt haer selven heel <rhyme label="b" type="m" corresp="#s3:l2">ghegaen</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Daer elck soeckt te worden <rhyme label="c" type="m">Niet</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Daer elck uyt haer selven <rhyme label="c" type="m" corresp="#s3:l5">vliet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wat kan de siel' <rhyme label="a" type="f">ontstellen</rhyme>?</l>
        <l id="s4:l2" met="4" type="+-">Oft oorsaken eenich <rhyme label="b" type="m">leet</rhyme>?</l>
        <l id="s4:l3" met="4" type="+-">Wat kan die daer woonen <rhyme label="a" type="f" corresp="#s4:l1">quellen</rhyme>?</l>
        <l id="s4:l4" met="4" type="+-">Die tot cruycen staen <rhyme label="b" type="m" corresp="#s4:l2">bereet</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">O t'is blijschap en <rhyme label="c" type="m">vermaeck</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">T'is al vrolijckheydts <rhyme label="c" type="m" corresp="#s4:l5">oorsaeck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Vreught en troost is al haer <rhyme label="a" type="f">lijden</rhyme>;</l>
        <l id="s5:l2" met="4" type="+-">Sy en trachten nerghens <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Als naer een oprecht <rhyme label="a" type="f" corresp="#s5:l1">vertijden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Met hun crachten <rhyme label="b" type="m" corresp="#s5:l2">altegaer</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">O ghenuchelijcke <rhyme label="c" type="m">deught</rhyme>!</l>
        <l id="s5:l6" met="4" type="+-">Die de sielen soo <rhyme label="c" type="m" corresp="#s5:l5">verheught</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dat die sielen comen <rhyme label="a" type="f">teghen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Smaeckt haer al als honich <rhyme label="b" type="m">soet</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">T'zijn al roosen t'alle <rhyme label="a" type="f" corresp="#s6:l1">weghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">T'is al troost die haer <rhyme label="b" type="m" corresp="#s6:l2">voldoet</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">T'gaet al wel, hoe dat <rhyme label="c" type="m">t'gheluckt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Met die willen zijn <rhyme label="c" type="m" corresp="#s6:l5">verdruckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Als naer t'ghen' dat sy <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Als naer d'wenschen van haer <rhyme label="b" type="m">hert'</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Sy die teghenheydt <rhyme label="a" type="f" corresp="#s7:l1">ontfanghen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En omhelsen alle <rhyme label="b" type="m" corresp="#s7:l2">smert'</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">In't Ootmoedich Dalen <rhyme label="c" type="m">is</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Van gheen leet <rhyme label="c" type="m" corresp="#s7:l5">bedroeffenis</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">T wordt versoet met <rhyme label="a" type="f">vrolijckheden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Met ghenuchten <rhyme label="b" type="m">alderley</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Diemen daer ontmoet <rhyme label="a" type="f" corresp="#s8:l1">beneden</rhyme></l>
        <l id="s8:l4" met="4" type="+-">In v oversoete <rhyme label="b" type="m" corresp="#s8:l2">wey'</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">Al t'ghen' dat droef is oft <rhyme label="c" type="m">schijnt</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">In v vrolijckheydt <rhyme label="c" type="m" corresp="#s8:l5">verdwijnt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Niet en kan daer <rhyme label="a" type="f">overcomen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Daer gheen blijschap uyt en <rhyme label="b" type="m">spruyt</rhyme>;</l>
        <l id="s9:l3" met="4" type="+-">Godt die heeft v <rhyme label="a" type="f" corresp="#s9:l1">inghenomen</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">En v heel in hem <rhyme label="b" type="m" corresp="#s9:l2">besluyt</rhyme>:</l>
        <l id="s9:l5" met="4" type="+-">O ghelucksalighe <rhyme label="c" type="m">ste'</rhyme>!</l>
        <l id="s9:l6" met="4" type="+-">Vwe palen zijn in <rhyme label="c" type="m" corresp="#s9:l5">vre'</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Weerdich Dal dat gaet te <rhyme label="a" type="f">boven</rhyme></l>
        <l id="s10:l2" met="4" type="+-">In die leeghde, daer ghy <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Alle schoonheydt der <rhyme label="a" type="f" corresp="#s10:l1">speel-hoven</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Die Godts wijsheydt heeft <rhyme label="b" type="m" corresp="#s10:l2">ghesticht</rhyme>;</l>
        <l id="s10:l5" met="4" type="+-">Mijn siel' haeckt naer v <rhyme label="c" type="m">altijt</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Die de rust der sielen <rhyme label="c" type="m" corresp="#s10:l5">zijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
