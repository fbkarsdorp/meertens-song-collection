      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">O Christen <rhyme label="a" type="m">och</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Die leven <rhyme label="a" type="m" corresp="#s1:l1">noch</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wilt Gods eer <rhyme label="b" type="f">vermeeren</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Sonder <rhyme label="a" type="m" corresp="#s1:l1">bedroch</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Wilt soecken <rhyme label="a" type="m" corresp="#s1:l1">doch</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Jerusalem <rhyme label="a" type="m" corresp="#s1:l1">bedocht</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die Eclesia vol <rhyme label="b" type="f" corresp="#s1:l3">eeren</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Die waerheyt <rhyme label="a" type="m">bekent</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Seer <rhyme label="a" type="m" corresp="#s2:l1">excelent</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sal altijt by haer <rhyme label="b" type="f">blijven</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Haer <rhyme label="a" type="m" corresp="#s2:l1">fondament</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Dat is <rhyme label="a" type="m" corresp="#s2:l1">gheprent</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Op Gods beloften <rhyme label="a" type="m" corresp="#s2:l1">jent</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Als die Propheten <rhyme label="b" type="f" corresp="#s2:l3">schrijven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Dit is mijn <rhyme label="a" type="m">verbont</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Tot aller <rhyme label="a" type="m" corresp="#s3:l1">stont</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met haer lieder seyt de <rhyme label="b" type="f">Heere</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Mijn Gheest <rhyme label="a" type="m" corresp="#s3:l1">oorcont</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Mijn woort goet <rhyme label="a" type="m" corresp="#s3:l1">ront</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Heb ick geset in haren <rhyme label="a" type="m" corresp="#s3:l1">mont</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Daer en sal van haer niet <rhyme label="b" type="f" corresp="#s3:l3">keeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Tis nu met <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Al in die daghen <rhyme label="a" type="m" corresp="#s4:l1">fijn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Van Noe dien ic had <rhyme label="b" type="f">ghesworen</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Dat ick op dat <rhyme label="a" type="m" corresp="#s4:l1">termijn</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Die wateren <rhyme label="a" type="m" corresp="#s4:l1">mijn</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Niet meer sou brenghende <rhyme label="a" type="m" corresp="#s4:l1">sijn</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Op die aerde als <rhyme label="b" type="f" corresp="#s4:l3">vooren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Alsoo <rhyme label="a" type="m">voorwaer</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Beloof ick <rhyme label="a" type="m" corresp="#s5:l1">haer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Op haer niet gram <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Noch int <rhyme label="a" type="m" corresp="#s5:l1">openbaer</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">Te nemen van <rhyme label="a" type="m" corresp="#s5:l1">haer</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Mijn barmhertigheyt <rhyme label="a" type="m" corresp="#s5:l1">claer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Noch haer straffen by <rhyme label="b" type="f" corresp="#s5:l3">desen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Die Berghen <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Sullen worden <rhyme label="a" type="m" corresp="#s6:l1">beroert</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En die Hemelen sullen <rhyme label="b" type="f">beven</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Maer mijn beloften <rhyme label="a" type="m" corresp="#s6:l1">hoord</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Verstaet dit <rhyme label="a" type="m" corresp="#s6:l1">Woort</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Sullen niet werden <rhyme label="a" type="m" corresp="#s6:l1">verstoort</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Seyt die Heere <rhyme label="b" type="f" corresp="#s6:l3">verheven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Ghy sult niet <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Seyt Godt de <rhyme label="a" type="m" corresp="#s7:l1">Heer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die verlooren stadt <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Maer die ghesochte <rhyme label="a" type="m" corresp="#s7:l1">seer</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Vol prijs en <rhyme label="a" type="m" corresp="#s7:l1">eer</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Een Croon der glorien <rhyme label="a" type="m" corresp="#s7:l1">meer</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">In des Heeren hant <rhyme label="b" type="f" corresp="#s7:l3">gepresen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Die beloften <rhyme label="a" type="m">bly</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Die hebben <rhyme label="a" type="m" corresp="#s8:l1">wy</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die Christus ons heeft <rhyme label="b" type="f">ghegeven</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Ick blijf u <rhyme label="a" type="m" corresp="#s8:l1">by</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">T'allen daghen <rhyme label="a" type="m" corresp="#s8:l1">vry</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Tot die voleyndinghe <rhyme label="a" type="m" corresp="#s8:l1">zy</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Van die Weerelt <rhyme label="b" type="f" corresp="#s8:l3">verheven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Die Poorten <rhyme label="a" type="m">verdreyt</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">Sullen teghen haer niet <rhyme label="a" type="m" corresp="#s9:l1">moghen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Paulus <rhyme label="b" type="f">seyt</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Met claer <rhyme label="a" type="m" corresp="#s9:l1">bescheyt</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Een Calomme der <rhyme label="a" type="m" corresp="#s9:l1">waerheyt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Een vasten gront voor <rhyme label="a" type="m" corresp="#s9:l1">ooghen</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Wie hoort u <rhyme label="b" type="f" corresp="#s9:l3">raet</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Niet <rhyme label="a" type="m">opstinaet</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">Die hoort mijn oock <rhyme label="a" type="m" corresp="#s10:l1">mede</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Wie u <rhyme label="b" type="f">versmaet</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Met sinnen <rhyme label="a" type="m" corresp="#s10:l1">quaet</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Versmaet my met der <rhyme label="a" type="m" corresp="#s10:l1">daet</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Die u ghesonden heeft ter <rhyme label="a" type="m" corresp="#s10:l1">stede</rhyme>.</l>
        <l id="s10:l7" met="3" type="-+">Schort u <rhyme label="b" type="f" corresp="#s10:l3">yet</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Segt het die Kercke <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s11:l2" met="2" type="-+">Segt die Heere <rhyme label="a" type="m" corresp="#s11:l1">voortane</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Hoort hy die Kercke <rhyme label="b" type="f">niet</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+">Verstaet dit <rhyme label="a" type="m" corresp="#s11:l1">bediet</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">So wilt hem houden <rhyme label="a" type="m" corresp="#s11:l1">siet</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Voor een Heyden en <rhyme label="a" type="m" corresp="#s11:l1">Publicane</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Joannes <rhyme label="b" type="f" corresp="#s11:l3">daer</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Die sach <rhyme label="a" type="m">eerbaer</rhyme>,</l>
        <l id="s12:l2" met="2" type="-+">Dit Jerusalem <rhyme label="a" type="m" corresp="#s12:l1">neerdalen</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Haer fondamenten <rhyme label="b" type="f">claer</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">Die zijn <rhyme label="a" type="m" corresp="#s12:l1">voorwaer</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Die Apostelen <rhyme label="a" type="m" corresp="#s12:l1">eerbaer</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Och Menschen wilt niet <rhyme label="a" type="m" corresp="#s12:l1">dwalen</rhyme>.</l>
        <l id="s12:l7" met="3" type="-+">Heyligh is <rhyme label="b" type="f" corresp="#s12:l3">zy</rhyme>,</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="2" type="-+">Godt blijft haer <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s13:l2" met="2" type="-+">Die Bruyt des lams <rhyme label="a" type="m" corresp="#s13:l1">Huysvrouwe</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Gods claerheyt <rhyme label="b" type="f">bly</rhyme>,</l>
        <l id="s13:l4" met="2" type="-+">Verlicht haer <rhyme label="a" type="m" corresp="#s13:l1">vry</rhyme></l>
        <l id="s13:l5" met="2" type="-+">Son noch Maen behoeft <rhyme label="a" type="m" corresp="#s13:l1">zy</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Haer licht ist Lam <rhyme label="a" type="m" corresp="#s13:l1">ghetrouwe</rhyme>.</l>
        <l id="s13:l7" met="3" type="-+">Als Jaspis <rhyme label="b" type="f" corresp="#s13:l3">Christalijn</rhyme>,</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="2" type="-+">So licht haer <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s14:l2" met="2" type="-+">Van gout so zijn haer <rhyme label="a" type="m" corresp="#s14:l1">straten</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Die Coninghen <rhyme label="b" type="f">zijn</rhyme>,</l>
        <l id="s14:l4" met="2" type="-+">Haer voester Heeren <rhyme label="a" type="m" corresp="#s14:l1">fijn</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">Gheen nacht sal in haer <rhyme label="a" type="m" corresp="#s14:l1">zijn</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Godt en sal haer niet <rhyme label="a" type="m" corresp="#s14:l1">verlaten</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Die Coninghen van <rhyme label="b" type="f" corresp="#s14:l3">veer</rhyme>,</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="2" type="-+">Die doen haer <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s15:l2" met="2" type="-+">Met neergheslaghen <rhyme label="a" type="m" corresp="#s15:l1">hoofde</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Aen bidden haer <rhyme label="b" type="f">seer</rhyme>,</l>
        <l id="s15:l4" met="2" type="-+">Ter aerden <rhyme label="a" type="m" corresp="#s15:l1">neer</rhyme></l>
        <l id="s15:l5" met="2" type="-+">En cussen dat is <rhyme label="a" type="m" corresp="#s15:l1">meer</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Haer voeten met <rhyme label="a" type="m" corresp="#s15:l1">ootmoede</rhyme>.</l>
        <l id="s15:l7" met="3" type="-+">O Jerusalem <rhyme label="b" type="f" corresp="#s15:l3">claer</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="2" type="-+">O Engelsche <rhyme label="a" type="m">schaer</rhyme></l>
        <l id="s16:l2" met="2" type="-+">In u rust Godt <rhyme label="a" type="m" corresp="#s16:l1">verheven</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Hy seyt <rhyme label="b" type="f">voorwaer</rhyme>,</l>
        <l id="s16:l4" met="2" type="-+">Met woorden <rhyme label="a" type="m" corresp="#s16:l1">claer</rhyme></l>
        <l id="s16:l5" met="2" type="-+">Mijn wille is in <rhyme label="a" type="m" corresp="#s16:l1">haer</rhyme></l>
        <l id="s16:l6" met="3" type="-+">In mijn hant zijt ghy <rhyme label="a" type="m" corresp="#s16:l1">gheschreven</rhyme>.</l>
        <l id="s16:l7" met="3" type="-+">Op aerden <rhyme label="b" type="f" corresp="#s16:l3">ydoon</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="2" type="-+">In s'Hemels <rhyme label="a" type="m">troon</rhyme>,</l>
        <l id="s17:l2" met="2" type="-+">Zijt ghy een <rhyme label="a" type="m" corresp="#s17:l1">ghemeene</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Die Enghelen <rhyme label="b" type="f">schoon</rhyme></l>
        <l id="s17:l4" met="2" type="-+">Leert Paulus <rhyme label="a" type="m" corresp="#s17:l1">coen</rhyme></l>
        <l id="s17:l5" met="2" type="-+">Die zijn uwe <rhyme label="a" type="m" corresp="#s17:l1">dienstboon</rhyme>,</l>
        <l id="s17:l6" met="3" type="-+">O Christenen groot en <rhyme label="a" type="m" corresp="#s17:l1">cleene</rhyme>.</l>
        <l id="s17:l7" met="3" type="-+">Daer is <rhyme label="b" type="f" corresp="#s17:l3">minjoot</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="2" type="-+">Die blijschap <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s18:l2" met="2" type="-+">Al in des Hemels <rhyme label="a" type="m" corresp="#s18:l1">throone</rhyme></l>
        <l id="s18:l3" met="3" type="-+">Als daer een zondaer <rhyme label="b" type="f">bloot</rhyme>,</l>
        <l id="s18:l4" met="2" type="-+">Met groot <rhyme label="a" type="m" corresp="#s18:l1">ootmoet</rhyme></l>
        <l id="s18:l5" met="2" type="-+">Oprechte penitentie <rhyme label="a" type="m" corresp="#s18:l1">doet</rhyme></l>
        <l id="s18:l6" met="3" type="-+">Seyt Christus in <rhyme label="a" type="m" corresp="#s18:l1">persoone</rhyme>.</l>
        <l id="s18:l7" met="3" type="-+">Oorlof broeders <rhyme label="b" type="f" corresp="#s18:l3">soet</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="2" type="-+">Met groot <rhyme label="a" type="m">ootmoet</rhyme></l>
        <l id="s19:l2" met="2" type="-+">Wilt u verstant <rhyme label="a" type="m" corresp="#s19:l1">verneeren</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Onder <rhyme label="b" type="f">t'behoet</rhyme></l>
        <l id="s19:l4" met="2" type="-+">Al met der <rhyme label="a" type="m" corresp="#s19:l1">spoet</rhyme></l>
        <l id="s19:l5" met="2" type="-+">Van die heylighe Kercke <rhyme label="a" type="m" corresp="#s19:l1">goet</rhyme>,</l>
        <l id="s19:l6" met="3" type="-+">Godt sal u gheloof <rhyme label="a" type="m" corresp="#s19:l1">vermeeren</rhyme></l>
        <l id="s19:l7" met="3" type="-+"><rhyme label="b" type="f" corresp="#s19:l3">AMEN</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
