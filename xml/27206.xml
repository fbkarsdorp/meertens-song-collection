  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Als ick scheyden <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En van v zyn <rhyme label="b" type="m">absent</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Fortuyn myn schreyden <rhyme label="a" type="m" corresp="#s1:l1">doet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Gantsch tot v lieff <rhyme label="b" type="m" corresp="#s1:l2">gewent</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Elders te <rhyme label="c" type="m">zyn</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Nyet lieff by <rhyme label="c" type="m" corresp="#s1:l5">dyn</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Claech ick met swaer <rhyme label="b" type="m" corresp="#s1:l2">torment</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Laet lieffden <rhyme label="a" type="m">bloyen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Altoos o reyne <rhyme label="b" type="m">maecht</rhyme></l>
        <l id="s2:l3" met="3" type="-+">En wilt nyet <rhyme label="a" type="m" corresp="#s2:l1">vuytroyen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Schoon lieff die naer v <rhyme label="b" type="m" corresp="#s2:l2">traecht</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Den minnen <rhyme label="c" type="m">brant</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Oock vast <rhyme label="c" type="m" corresp="#s2:l5">geplant</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Can niet weesen <rhyme label="b" type="m" corresp="#s2:l2">verjaecht</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Het eerbaer <rhyme label="a" type="m">weesen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Te meer myn blaecken <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">En sonder <rhyme label="a" type="m" corresp="#s3:l1">vreesen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Raepen een goeden <rhyme label="b" type="m" corresp="#s3:l2">moet</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Voor ende <rhyme label="c" type="m">naer</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Aen v beelt <rhyme label="c" type="m" corresp="#s3:l5">claer</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Neem ick een rust zeer <rhyme label="b" type="m" corresp="#s3:l2">soet</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Ghy syt <rhyme label="a" type="m">princesse</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In wyens lieffde zeer <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Beleefde <rhyme label="a" type="m" corresp="#s4:l1">matresse</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Leg ick en brant zeer <rhyme label="b" type="m" corresp="#s4:l2">bloot</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Altoos <rhyme label="c" type="m">getrouw</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Nochtans <rhyme label="c" type="m" corresp="#s4:l5">kersouw</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Tot dat my velt de <rhyme label="b" type="m" corresp="#s4:l2">doot</rhyme></l>
      </lg>
    </lg>
  </text>
