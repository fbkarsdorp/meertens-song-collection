  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">JAn heeft een Vrouw <rhyme label="a" type="f">gekregen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En Griet heeft eenen <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ian is met Griet <rhyme label="a" type="f" corresp="#s1:l1">bedeghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maer Ian g'en weter niet <rhyme label="b" type="m" corresp="#s1:l2">van</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Het Vlasken wirdt eerst soet <rhyme label="c" type="m">gherockt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Het ging al oft het waer <rhyme label="c" type="m" corresp="#s1:l5">gejockt</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Maer naer de <rhyme label="d" type="m">Feest</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Maeckt sy de <rhyme label="d" type="m" corresp="#s1:l7">beest</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Grierjen gaet <rhyme label="e" type="f">morren</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">Grietjen gaet <rhyme label="e" type="f" corresp="#s1:l9">knorren</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">'t Barende Vrouwken maeckt een <rhyme label="d" type="m" corresp="#s1:l7">tempeest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Griet weet wel uyt te <rhyme label="a" type="f">flincken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En sy maeckt wel goet <rhyme label="b" type="m">chier</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer als Ian sou gaen <rhyme label="a" type="f" corresp="#s2:l1">drincken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Alleen een pintjen <rhyme label="b" type="m" corresp="#s2:l2">Bier</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dan toont ons Grietjen haren <rhyme label="c" type="m">kop</rhyme></l>
        <l id="s2:l6" met="4" type="-+">En sy sluyt Iannens mantel <rhyme label="c" type="m" corresp="#s2:l5">op</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Grietjen siet <rhyme label="d" type="m">suer</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Grietjen siet <rhyme label="d" type="m" corresp="#s2:l7">stuer</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Grietjen gaet <rhyme label="e" type="f">muylen</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Grietjen gaet <rhyme label="e" type="f" corresp="#s2:l9">pruylen</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Vrienden wat dunckt u van dit <rhyme label="d" type="m" corresp="#s2:l7">Postuer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Als Ian met een <rhyme label="a" type="f">snap-reysken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In d'Herbergh eens <rhyme label="b" type="m">gheraeckt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wordt hy van dat soet <rhyme label="a" type="f" corresp="#s3:l1">Meysken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Voor 't Volck beschaemt <rhyme label="b" type="m" corresp="#s3:l2">ghemaeckt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Sy loopt selfs naer de Herberg <rhyme label="c" type="m">toe</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Sy seght ghy satte Beest, wel <rhyme label="c" type="m" corresp="#s3:l5">hoe</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Wel mynen <rhyme label="d" type="m">Knuys</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Drinckt g'u hier <rhyme label="d" type="m" corresp="#s3:l7">buys</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Soeckt ghy noch <rhyme label="e" type="f">gasten</rhyme>,</l>
        <l id="s3:l10" met="2" type="-+">Daer ick moet <rhyme label="e" type="f" corresp="#s3:l9">vasten</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">'k Sal u wel hebben komt eens <rhyme label="d" type="m" corresp="#s3:l7">t'huys</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En Ian en dirf niet t'huys <rhyme label="a" type="f">gaen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wilde ghy weten <rhyme label="b" type="m">waerom</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Syn Vrouw sal achter de deur <rhyme label="a" type="f" corresp="#s4:l1">staen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Met eenen dicken <rhyme label="b" type="m" corresp="#s4:l2">Batton</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">'t Wirdt 's avonts doncker en heel <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Ian sat noch voor de deur op <rhyme label="c" type="m" corresp="#s4:l5">straet</rhyme></l>
        <l id="s4:l7" met="2" type="-+"><rhyme label="d" type="m">Hanneken-uyt</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Quam uyt de <rhyme label="d" type="m" corresp="#s4:l7">muyt</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Ian sat en <rhyme label="e" type="f">suchten</rhyme>,</l>
        <l id="s4:l10" met="2" type="-+">Ian sat en <rhyme label="e" type="f" corresp="#s4:l9">duchten</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Vreesende slaghen op syn <rhyme label="d" type="m" corresp="#s4:l7">huyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Jan gaet het <rhyme label="a" type="f">hasarderen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ian klopt en Griet komt <rhyme label="b" type="m">veur</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En Crite laet Ian <rhyme label="a" type="f" corresp="#s5:l1">passeren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En Griet die sluyt de <rhyme label="b" type="m" corresp="#s5:l2">deur</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Soo haest als Ian was op den <rhyme label="c" type="m">vloer</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Soo maeckte Griet een groot <rhyme label="c" type="m" corresp="#s5:l5">ramoer</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Grietjen syn <rhyme label="d" type="m">Wyf</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Smeet hem soo <rhyme label="d" type="m" corresp="#s5:l7">styf</rhyme>,</l>
        <l id="s5:l9" met="2" type="-+">Vloeckte en <rhyme label="e" type="f">sweirde</rhyme>,</l>
        <l id="s5:l10" met="2" type="-+">Tierden en <rhyme label="e" type="f" corresp="#s5:l9">beirde</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Oft sy den droes had in haer <rhyme label="d" type="m" corresp="#s5:l7">lyf</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En Ian moest weer gaen <rhyme label="a" type="f">loopáº½</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ian hadt de vrees in 't <rhyme label="b" type="m">lyf</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Dat s'hem sou 't vel <rhyme label="a" type="f" corresp="#s6:l1">af-stroopen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wat dunckt u van dat <rhyme label="b" type="m" corresp="#s6:l2">Wyf</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Als Ian sat op de banck voor 't <rhyme label="c" type="m">huys</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Liep Griet noch boven met <rhyme label="c" type="m" corresp="#s6:l5">ghedruys</rhyme>.</l>
        <l id="s6:l7" met="2" type="-+">Griet dat boos <rhyme label="d" type="m">vel</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Griet die quay <rhyme label="d" type="m" corresp="#s6:l7">hel</rhyme>,</l>
        <l id="s6:l9" met="2" type="-+">Vol van <rhyme label="e" type="f">injurie</rhyme>,</l>
        <l id="s6:l10" met="2" type="-+">Goot als een <rhyme label="e" type="f" corresp="#s6:l9">furie</rhyme></l>
        <l id="s6:l11" met="4" type="+-">Ian met den Pis-pot op syn <rhyme label="d" type="m" corresp="#s6:l7">vel</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ian seyd' 't en is gheen <rhyme label="a" type="f">wonder</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dat 't reghent op myn <rhyme label="b" type="m">lyf</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Want reghen volght naer <rhyme label="a" type="f" corresp="#s7:l1">donder</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Den Pis-pot naer 't <rhyme label="b" type="m" corresp="#s7:l2">ghekyf</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Als die quaey buy sal over <rhyme label="c" type="m">zyn</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Soo hop ic weer de <rhyme label="c" type="m" corresp="#s7:l5">sonne-schyn</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Naer het <rhyme label="d" type="m">tempeest</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Van die quay <rhyme label="d" type="m" corresp="#s7:l7">Beest</rhyme>,</l>
        <l id="s7:l9" met="2" type="-+">Sal het schoon <rhyme label="e" type="f">weder</rhyme>,</l>
        <l id="s7:l10" met="2" type="-+">En myn Vrouw <rhyme label="e" type="f" corresp="#s7:l9">weder</rhyme></l>
        <l id="s7:l11" met="4" type="+-">Minnelyck zyn, en soet van <rhyme label="d" type="m" corresp="#s7:l7">gheest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
