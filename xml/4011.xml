    <melody>Maagdje wilt gij geestelijk wezen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GOd men verwacht v ende <rhyme label="a" type="f">louet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ende v betaemt geloeft te <rhyme label="b" type="m">sijn</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Want ghi tghebet verhooren <rhyme label="a" type="f" corresp="#s1:l1">moghet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Want ghi tghebet verhooren <rhyme label="a" type="f" corresp="#s1:l1">moghet</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Coempt alle vleesch voer v gheloefte <rhyme label="b" type="m" corresp="#s1:l2">doen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Te groot is ons misdaet <rhyme label="a" type="f">gheworden</rhyme>.</l>
        <l id="s2:l2" met="4" type="-+">Nochtans onse ouertredinge <rhyme label="b" type="m">vergeeft</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Wij sijn in groot verdriet <rhyme label="a" type="f" corresp="#s2:l1">ghetorden</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Wij sijn in groot verdriet <rhyme label="a" type="f" corresp="#s2:l1">ghetorden</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Doer v ghenade onse siele <rhyme label="b" type="m" corresp="#s2:l2">leeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wel dien die ghi verkiest te <rhyme label="a" type="f">wonen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ende toelaet in v houen <rhyme label="b" type="m">ontfaen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Die wort met goetheyt wer <rhyme label="a" type="f" corresp="#s3:l1">thronen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Die wort met goetheyt wer <rhyme label="a" type="f" corresp="#s3:l1">thronen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Versaedt / want het sal int huys ws tempels <rhyme label="b" type="m" corresp="#s3:l2">staen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghi sult ons wonderlijc <rhyme label="a" type="f">antwoerden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Ende vercoren met <rhyme label="b" type="m">gherechticheyt</rhyme></l>
        <l id="s4:l3" met="4" type="-+">God die van den westen totten <rhyme label="a" type="f" corresp="#s4:l1">noerden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">God die van den westen totten <rhyme label="a" type="f" corresp="#s4:l1">noerden</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Sijt toeuerlaet ende onse <rhyme label="b" type="m" corresp="#s4:l2">salicheyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghi die bergen cont <rhyme label="a" type="f">verwecken</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Ende tot stride bereet tot uwer <rhyme label="b" type="m">cracht</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Ghi cont haer lenden <rhyme label="a" type="f" corresp="#s5:l1">ouertrecken</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Ghi cont haer lenden <rhyme label="a" type="f" corresp="#s5:l1">ouertrecken</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Om gorden met ghewelt / ende alder <rhyme label="b" type="m" corresp="#s5:l2">macht</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghi die dat bruysen ende <rhyme label="a" type="f">misbaren</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Cont stillen ende blusschen inder <rhyme label="b" type="m">zee</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Ende dat brullen haerder <rhyme label="a" type="f" corresp="#s6:l1">baren</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Ende dat brullen haerder <rhyme label="a" type="f" corresp="#s6:l1">baren</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Ende dat grimmen des volcx / twist / ende <rhyme label="b" type="m" corresp="#s6:l2">wee</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">So dat wel vreesen voer v <rhyme label="a" type="f">teeken</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Aent eynde der werelt lieden <rhyme label="b" type="m">ghenoech</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Ghi maect vrolijc clerc en <rhyme label="a" type="f" corresp="#s7:l1">leecken</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Ghi maect vrolijc clerc en <rhyme label="a" type="f" corresp="#s7:l1">leecken</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Beyde die daer wtgaen spade en <rhyme label="b" type="m" corresp="#s7:l2">vroech</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghi visiteert / bewaert / maec <rhyme label="a" type="f">rijcke</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dlant / den stroom / god is vol waters <rhyme label="b" type="m">reyn</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Met dien bereyt ghi <rhyme label="a" type="f" corresp="#s8:l1">troostelike</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Met dien bereyt ghi <rhyme label="a" type="f" corresp="#s8:l1">troostelike</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Haer coren / want so bereydy dat <rhyme label="b" type="m" corresp="#s8:l2">certeyn</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ghi drenct ende vochticht sijn <rhyme label="a" type="f">voren</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Al sijn gheploechde <rhyme label="b" type="m">ouerghiet</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Met drupen maect ghi weec dat <rhyme label="a" type="f" corresp="#s9:l1">koren</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Met drupen maect ghi weec dat <rhyme label="a" type="f" corresp="#s9:l1">koren</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Ontsegent sijn ghewassen in groot <rhyme label="b" type="m" corresp="#s9:l2">bediet</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghi croont dat iaer met uwen <rhyme label="a" type="f">goede</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Van vette druypen v voetstappen <rhyme label="b" type="m">ront</rhyme></l>
        <l id="s10:l3" met="4" type="-+">De woestinen druypen te <rhyme label="a" type="f" corresp="#s10:l1">vloede</rhyme></l>
        <l id="s10:l4" met="4" type="-+">De woestinen druypen te <rhyme label="a" type="f" corresp="#s10:l1">vloede</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Lustich sijn die houen der dalen <rhyme label="b" type="m" corresp="#s10:l2">gront</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Die ackeren die sijn vol <rhyme label="a" type="f">scapen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Die dalen staen dic met sade <rhyme label="b" type="m">groen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Si iuechden songen sonder <rhyme label="a" type="f" corresp="#s11:l1">slapen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Si iuechden songen sonder <rhyme label="a" type="f" corresp="#s11:l1">slapen</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Dits van Hierusalem ende <rhyme label="b" type="m" corresp="#s11:l2">Syon</rhyme></l>
      </lg>
    </lg>
  </text>
</song>
