  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">O Mijn <rhyme label="a" type="f">Bewaerder</rhyme>!</l>
        <l id="s1:l2" met="2" type="-+">Mijn <rhyme label="a" type="f" corresp="#s1:l1">deughd-vergaerder</rhyme>!</l>
        <l id="s1:l3" met="2" type="-+">Den helschen <rhyme label="b" type="f">blaffer</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Komt my daeg'lijcks <rhyme label="b" type="f" corresp="#s1:l3">straffer</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">En geveynst aen <rhyme label="c" type="m">boort</rhyme>,</l>
        <l id="s1:l6" met="5" type="+-">O Engel! Engel! houdt by God mijn <rhyme label="c" type="m" corresp="#s1:l5">woord</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Bidt God mijn <rhyme label="a" type="f">Rechter</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Dat Hy sijn <rhyme label="a" type="f" corresp="#s2:l1">Vechter</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Ten allen <rhyme label="b" type="f">tijden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Wilt van d' hell' <rhyme label="b" type="f" corresp="#s2:l3">bevrijden</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Doet daer toe u <rhyme label="c" type="m">best</rhyme></l>
        <l id="s2:l6" met="5" type="+-">O Engel! Engel! tot mijns levens <rhyme label="c" type="m" corresp="#s2:l5">lest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">O trouwen <rhyme label="a" type="f">Engel</rhyme>!</l>
        <l id="s3:l2" met="2" type="-+">Siet hoe ick <rhyme label="a" type="f" corresp="#s3:l1">hengel</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Om uw' <rhyme label="b" type="f">gebeden</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Siet hoe 'k my <rhyme label="b" type="f" corresp="#s3:l3">besteden</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Wil aen God <rhyme label="c" type="m">altijd</rhyme>:</l>
        <l id="s3:l6" met="5" type="+-">O Engel! Engel! staet my by in <rhyme label="c" type="m" corresp="#s3:l5">strijd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ick koom U <rhyme label="a" type="f">loven</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Om dat te <rhyme label="a" type="f" corresp="#s4:l1">boven</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Ick ben <rhyme label="b" type="f">gekomen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">(Even als de <rhyme label="b" type="f" corresp="#s4:l3">vromen</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Door uw' goe <rhyme label="c" type="m">gebe'en</rhyme>.</l>
        <l id="s4:l6" met="5" type="+-">O Engel! Engel!) 't geen ick heb <rhyme label="c" type="m" corresp="#s4:l5">gele'en</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Ick sal lof <rhyme label="a" type="f">geven</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Soo langh ick <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Sal op de <rhyme label="b" type="f">aerde</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">U, die my <rhyme label="b" type="f" corresp="#s5:l3">bewaerden</rhyme></l>
        <l id="s5:l5" met="3" type="+-">Van de boose <rhyme label="c" type="m">hell'</rhyme>,</l>
        <l id="s5:l6" met="5" type="+-">O Engel! Engel! die my staegh doet <rhyme label="c" type="m" corresp="#s5:l5">wel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Geneest mijn <rhyme label="a" type="f">wonden</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Vergeeft mijn <rhyme label="a" type="f" corresp="#s6:l1">sonden</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Wilt my <rhyme label="b" type="f">verlichten</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">En in deughden <rhyme label="b" type="f" corresp="#s6:l3">stichten</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">En ten besten <rhyme label="c" type="m">raÃªn</rhyme>,</l>
        <l id="s6:l6" met="5" type="+-">O Engel! Engel! g'lijck Ghy hebt <rhyme label="c" type="m" corresp="#s6:l5">gedaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Brenght uw' <rhyme label="a" type="f">bekenden</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Tot 's hemels <rhyme label="a" type="f" corresp="#s7:l1">benden</rhyme>;</l>
        <l id="s7:l3" met="2" type="-+">Verkrijght <rhyme label="b" type="f">victory</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">En des hemels <rhyme label="b" type="f" corresp="#s7:l3">glory</rhyme></l>
        <l id="s7:l5" met="3" type="+-">Aen uw' tragen <rhyme label="c" type="m">knecht</rhyme>,</l>
        <l id="s7:l6" met="5" type="+-">O Engel! Engel! na dit swaer <rhyme label="c" type="m" corresp="#s7:l5">gevecht</rhyme>.</l>
      </lg>
    </lg>
  </text>
