  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DIe tot Godt recht wilt <rhyme label="a" type="f">gheraecken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Moet al eyghentheyt <rhyme label="a" type="f" corresp="#s1:l1">versaecken</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ende staen in een <rhyme label="b" type="m">verniet</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Want die Godt eens wilt <rhyme label="c" type="f">aenschouwen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Moet hem boven schepsels <rhyme label="c" type="f" corresp="#s1:l4">houwen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Boven al, dat aertrijck <rhyme label="b" type="m" corresp="#s1:l3">biet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Siet naer plaets, noch tijdt noch <rhyme label="a" type="f">stonden</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Maer verniettet al ten <rhyme label="a" type="f" corresp="#s2:l1">gronden</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Wat dat in u leven <rhyme label="b" type="m">mach</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Soo verheugd' u sonder <rhyme label="c" type="f">vresen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">In dat ongheschapen <rhyme label="c" type="f" corresp="#s2:l4">Wesen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Daermen rust nacht ende <rhyme label="b" type="m" corresp="#s2:l3">dach</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Godt die sal u daer <rhyme label="a" type="f">aenspreecken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">En sijn liefd' in u <rhyme label="a" type="f" corresp="#s3:l1">ontsteecken</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Ghy sult hooren sijne <rhyme label="b" type="m">stem</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Daer sal u den Heer <rhyme label="c" type="f">vertoonen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En u liefde sal hy <rhyme label="c" type="f" corresp="#s3:l4">croonen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Voerend' u gheheel in <rhyme label="b" type="m" corresp="#s3:l3">hem</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Daer suldy nae u <rhyme label="a" type="f">verlanghen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Dien soeten teugh <rhyme label="a" type="f" corresp="#s4:l1">ontfanghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die u soo veraecken <rhyme label="b" type="m">sal</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Dat ghy sult sonder <rhyme label="c" type="f">verdrieten</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Godt gheduerichlijck <rhyme label="c" type="f" corresp="#s4:l4">ghenieten</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En beminnen boven <rhyme label="b" type="m" corresp="#s4:l3">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Tracht dan, ziele, vry nae <rhyme label="a" type="f">lijden</rhyme>;</l>
        <l id="s5:l2" met="4" type="+-">Soos al u Godt <rhyme label="a" type="f" corresp="#s5:l1">verblijden</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Want het is de rechte <rhyme label="b" type="m">baen</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Om met liefde <rhyme label="c" type="f">sonderlinghen</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Wt allen gheschapen <rhyme label="c" type="f" corresp="#s5:l4">dinghen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">In dat slaich Een te <rhyme label="b" type="m" corresp="#s5:l3">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
