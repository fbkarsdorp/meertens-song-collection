  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ICk geloof, ô Godt <rhyme label="a" type="f">almachtigh</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Dat uw' Kerck hout voor <rhyme label="a" type="f" corresp="#s1:l1">waerachtigh</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Om dat gy dit hebt <rhyme label="b" type="m">geseyt</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Die niet liegen kont noch <rhyme label="c" type="f">faelen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Die hebt wysheydt sonder <rhyme label="c" type="f" corresp="#s1:l4">paelen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die de waerheydt selve <rhyme label="b" type="m" corresp="#s1:l3">syt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Door uw' hulp, die gy wilt <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Hop' ick, Godt, het eeuwigh <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En het gene daer toe <rhyme label="b" type="m">dient</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Gy belooft dit, die syt <rhyme label="c" type="f">machtigh</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Goet tot ons, getrouw, <rhyme label="c" type="f" corresp="#s2:l4">waerachtigh</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Jesus heeft ons dit <rhyme label="b" type="m" corresp="#s2:l3">verdient</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Heer ick min u om uw <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Om uw' goetheyt, noyt <rhyme label="a" type="f" corresp="#s3:l1">volpresen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Min ick u uyt hert, en <rhyme label="b" type="m">sin</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Alle goedt ick aen u <rhyme label="c" type="f">wensche</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Insgelyckx ick alle <rhyme label="c" type="f" corresp="#s3:l4">menschen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Om u als myn self <rhyme label="b" type="m" corresp="#s3:l3">bemin</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">t'Is my leet dat ick, ô <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">U vergramt heb soo veel <rhyme label="a" type="f" corresp="#s4:l1">keeren</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die myn Godt syt, mynen <rhyme label="b" type="m">al</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Uyt uw' suyver liefd' ick <rhyme label="c" type="f">haete</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Al dees sonden, k'wilse <rhyme label="c" type="f" corresp="#s4:l4">laeten</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">Doodt-sond' meest ick vluchten <rhyme label="b" type="m" corresp="#s4:l3">sal</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
