  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als Jhesus Christus <rhyme label="a" type="m">ghebenedijt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wiste dat comen was den <rhyme label="a" type="m" corresp="#s1:l1">tijt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat hy van hier sou <rhyme label="b" type="f">scheyden</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Aen Tafel met zijn Jongheren <rhyme label="c" type="m">sadt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dat Paeschlam hy oock met hun <rhyme label="c" type="m" corresp="#s1:l4">adt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Opt laetste voor zijnen <rhyme label="b" type="f" corresp="#s1:l3">lijden</rhyme>.</l>
        <l id="s1:l7" met="4" type="-+">Van herten sprack hy, heb ick <rhyme label="d" type="m">begheert</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Met u, eer my die doot <rhyme label="d" type="m" corresp="#s1:l7">aenueert</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Dit Paesschelam te <rhyme label="e" type="f">eten</rhyme>:</l>
        <l id="s1:l10" met="4" type="-+">Van nu voortaen seg ick u <rhyme label="f" type="m">al</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Van desen ick niet meer eten <rhyme label="f" type="m" corresp="#s1:l10">sal</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Dan in mijns Vaders rijcke <rhyme label="e" type="f" corresp="#s1:l9">gheseten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als hy aen Tafel met hun <rhyme label="a" type="m">sat</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Heeft hy stilswijghens ghemerckt <rhyme label="a" type="m" corresp="#s2:l1">dat</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Tghelooue en herte <rhyme label="b" type="f">beyde</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">En stelde daer in een <rhyme label="c" type="m">Sacrament</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Nemende in dhandt dat Broot <rhyme label="c" type="m" corresp="#s2:l4">present</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Brackt, gaft hen ende <rhyme label="b" type="f" corresp="#s2:l3">seyde</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Neemt daer en eet, dat is mijn <rhyme label="d" type="m">Lijf</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Dat voor u aen dat Cruyce <rhyme label="d" type="m" corresp="#s2:l7">stijf</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Ghegheuen wordt vol <rhyme label="e" type="f">weerden</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Dit doet en ghedenckt my daer <rhyme label="f" type="m">by</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Dat ick u Verlosser en Heere <rhyme label="f" type="m" corresp="#s2:l10">sy</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Die hier ghelooft op <rhyme label="e" type="f" corresp="#s2:l9">eerden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Diesghelijcken opt selue <rhyme label="a" type="m">pas</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Alst Auondtmael gheeyndet <rhyme label="a" type="m" corresp="#s3:l1">was</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sterckte hy zijn Apostelen <rhyme label="b" type="f">teere</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Volmakende dit dierbaer <rhyme label="c" type="m">pant</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Nam oock den Kelck in zijn <rhyme label="c" type="m" corresp="#s3:l4">hant</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dancksegghende sprack die <rhyme label="b" type="f" corresp="#s3:l3">Heere</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Neemt, drinckt Al hier wt, dit is mijn <rhyme label="d" type="m">Bloet</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Des nieuwen Testamentes <rhyme label="d" type="m" corresp="#s3:l7">goet</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Twelck ick aent cruyce <rhyme label="e" type="f">crachtich</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Verghieten voor u sonden <rhyme label="f" type="m">sal</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Sulcks doet als ghy hier drincket <rhyme label="f" type="m" corresp="#s3:l10">al</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Mijnder zijnde <rhyme label="e" type="f" corresp="#s3:l9">ghedachtich</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghelijck als Godt in Egipten <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Alle Eerste gheboren liet slaen <rhyme label="a" type="m" corresp="#s4:l1">doot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En dat in eene <rhyme label="b" type="f">Nachte</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Den Coninck Pharo oock <rhyme label="c" type="m">verdranck</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">In die rooy Zee, ende <rhyme label="c" type="m" corresp="#s4:l4">verzanck</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Met zijnen heelen <rhyme label="b" type="f" corresp="#s4:l3">heyrcrachte</rhyme>:</l>
        <l id="s4:l7" met="4" type="-+">Doen stichte Godt den <rhyme label="d" type="m">Paesschedach</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Om tsvolcks bedencken dat daer <rhyme label="d" type="m" corresp="#s4:l7">sach</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Sijn groote wonder <rhyme label="e" type="f">wercken</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Want sy werden daer al <rhyme label="f" type="m">beurijdt</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Met stercker hant, vant Slaefhuys <rhyme label="f" type="m" corresp="#s4:l10">wijdt</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Door die rooy Zee int <rhyme label="e" type="f" corresp="#s4:l9">mercken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Alsoo doet Christus onsen <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Door zijnen bloede int doopsel <rhyme label="a" type="m" corresp="#s5:l1">meer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer hy versmoort ons <rhyme label="b" type="f">sonden</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Den doot hy doodet, die helle hy <rhyme label="c" type="m">stoort</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Thandtschrift dat die consciencie <rhyme label="c" type="m" corresp="#s5:l4">moort</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Heeft hy aent Cruyce <rhyme label="b" type="f" corresp="#s5:l3">ghebonden</rhyme>.</l>
        <l id="s5:l7" met="4" type="-+">En op dat zijn Kercke dit dincke <rhyme label="d" type="m">altijt</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Maeckt hy hem seluen een Paeschlam <rhyme label="d" type="m" corresp="#s5:l7">subijt</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Int Testament daer hy <rhyme label="e" type="f">stichte</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Sijn Lichaem teten in dat <rhyme label="f" type="m">Broot</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">In Wijn te drincken zijn Bloet <rhyme label="f" type="m" corresp="#s5:l10">root</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Door synder woorden <rhyme label="e" type="f" corresp="#s5:l9">ghewichte</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die van dit Broot teten <rhyme label="a" type="m">bedinckt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">en van den Kelcke des Heeren <rhyme label="a" type="m" corresp="#s6:l1">drinckt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die moet zijn doot <rhyme label="b" type="f">verconden</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Dat is dat Christus Godes <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Aent cruys betaelt heeft den vollen <rhyme label="c" type="m" corresp="#s6:l4">loon</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Voor onser aller <rhyme label="b" type="f" corresp="#s6:l3">sonden</rhyme>:</l>
        <l id="s6:l7" met="4" type="-+">En dat ons Godt ghenadich <rhyme label="d" type="m">sy</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Die dit gheloouen en oock daer <rhyme label="d" type="m" corresp="#s6:l7">by</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Aen onsen Doop vast <rhyme label="e" type="f">cleuen</rhyme>,</l>
        <l id="s6:l10" met="4" type="-+">Soo sullen wy Godes kinderen <rhyme label="f" type="m">zijn</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">En tRijcke Christi crijghen <rhyme label="f" type="m" corresp="#s6:l10">fijn</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">Dat ons Godt eewich wil <rhyme label="e" type="f" corresp="#s6:l9">gheuen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die mensche betaste hem seluen <rhyme label="a" type="m">ient</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Eer hy ontfangt dit <rhyme label="a" type="m" corresp="#s7:l1">Sacrament</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat hy bekenne zijn <rhyme label="b" type="f">herte</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Oft hy int rechte Ghelooue <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En met die waerachtighe liefde <rhyme label="c" type="m" corresp="#s7:l4">gaet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Dat hem die sonde niet <rhyme label="b" type="f" corresp="#s7:l3">smerte</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">Dat hyt Gherechte en eete <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Om dat hy gheen verschil en <rhyme label="d" type="m" corresp="#s7:l7">siet</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Tusschen dat Lichaem des <rhyme label="e" type="f">Heeren</rhyme>,</l>
        <l id="s7:l10" met="4" type="-+">Hy moet der sonden Suerdeech <rhyme label="f" type="m">eest</rhyme>,</l>
        <l id="s7:l11" met="4" type="+-">Afdoen door hulpe des heylighen <rhyme label="f" type="m" corresp="#s7:l10">Gheest</rhyme>,</l>
        <l id="s7:l12" met="3" type="-+">Christo dat Lam ter <rhyme label="e" type="f" corresp="#s7:l9">eeren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Daerom laet ons nu alle <rhyme label="a" type="m">ghelijck</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Godt onsen Vader in <rhyme label="a" type="m" corresp="#s8:l1">Hemelrijck</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Met gantschen herten <rhyme label="b" type="f">beden</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">Door Christum onsen <rhyme label="c" type="m">Aduocaet</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Die voor al onse <rhyme label="c" type="m" corresp="#s8:l4">missedaet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Den doot eens heeft <rhyme label="b" type="f" corresp="#s8:l3">gheleden</rhyme>:</l>
        <l id="s8:l7" met="4" type="-+">Dat hy door den heylighen <rhyme label="d" type="m">Gheest</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Met stercken Ghelooue altijt <rhyme label="d" type="m" corresp="#s8:l7">vermeest</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Om na zijn woort te <rhyme label="e" type="f">leuen</rhyme>,</l>
        <l id="s8:l10" met="4" type="-+">In rechter liefde en <rhyme label="f" type="m">eenicheyt</rhyme>,</l>
        <l id="s8:l11" met="4" type="+-">En dat hy ons nae dees <rhyme label="f" type="m" corresp="#s8:l10">cranckheyt</rhyme>,</l>
        <l id="s8:l12" met="3" type="-+">Die eewighe vrede wil <rhyme label="e" type="f" corresp="#s8:l9">gheuen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
