<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>29319</id>
    <date>
      <year-start>1500</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
      <tag standard-name="gebedslied" translation="prayer">gebedslied</tag>
    </tags>
    <melody>Dat is wil dij van de waarheid horen zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Kinder loeft den inghel <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Hij vlieght soe hoege voer gods <rhyme label="a" type="m" corresp="#s1:l1">anschijn</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ende es hem soe <rhyme label="b" type="f">bequame</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Dat hijten scierde hem seluen <rhyme label="c" type="m">ghelijc</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Franciscus is sijn <rhyme label="b" type="f" corresp="#s1:l3">name</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wij vinden alleen van hem <rhyme label="a" type="m">bescreuen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Dat hem die gods sone woude <rhyme label="a" type="m" corresp="#s2:l1">geuen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sijn wapen al <rhyme label="b" type="f">onghebroken</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Daer om is hij hem meest <rhyme label="c" type="m">ghelijc</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Heeft ons scrifture <rhyme label="b" type="f" corresp="#s2:l3">ghesproken</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nu laet ons eeren den inghelschen <rhyme label="a" type="m">man</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die hem seluen verschieren <rhyme label="a" type="m" corresp="#s3:l1">can</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Met wapenen sonder <rhyme label="b" type="f">ghelijke</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Hij leet nv voer de <rhyme label="c" type="m">inghelen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">En ciert dat hoeghe <rhyme label="b" type="f" corresp="#s3:l3">rike</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als ic doer ga dat hemels <rhyme label="a" type="m">lant</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Ende aensie soe meneghen <rhyme label="a" type="m" corresp="#s4:l1">sant</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ghesciert met duegden <rhyme label="b" type="f">scoene</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Soe en ha nieman die wonden dan <rhyme label="c" type="m">hij</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Ghelijc den zueten gods <rhyme label="b" type="f" corresp="#s4:l3">sone</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Recht armoede was sijn <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Want hij niet en woude noch nie en <rhyme label="a" type="m" corresp="#s5:l1">besat</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Van gheenen erschen <rhyme label="b" type="f">dinghen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Daer om is hij nv hoexst <rhyme label="c" type="m">ghecroent</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Al daer die inghelen <rhyme label="b" type="f" corresp="#s5:l3">singhen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Niet ghelijc den ghemeinen <rhyme label="a" type="m">sant</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Is sinen loen int hemels <rhyme label="a" type="m" corresp="#s6:l1">lant</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Maer vanden hoexsten <rhyme label="b" type="f">steden</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Hij heeft met sier <rhyme label="c" type="m">oetmoedicheit</rhyme></l>
        <l id="s6:l5" met="3" type="-+">den hemel al doer <rhyme label="b" type="f" corresp="#s6:l3">treden</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O zuete vader o wert <rhyme label="a" type="m">patroen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Bidt uwen broeder den gods <rhyme label="a" type="m" corresp="#s7:l1">soen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Dat hij ons wil <rhyme label="b" type="f">vergheuen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Ons misdaden <rhyme label="c" type="m">menichfoudt</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Al in dit broesche <rhyme label="b" type="f" corresp="#s7:l3">leuen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O zuete vader bewijst v <rhyme label="a" type="m">dueght</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Want ghij voer alle man <rhyme label="a" type="m" corresp="#s8:l1">vermoeght</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Comen ten veeghevier <rhyme label="b" type="f">stringhe</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Alle iaer op uwen <rhyme label="c" type="m">dach</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Bewijst aen ons v <rhyme label="b" type="f" corresp="#s8:l3">minne</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Als wij siin indie grote <rhyme label="a" type="m">noot</rhyme></l>
        <l id="s9:l2" met="4" type="-+">En ligghe in die bitter <rhyme label="a" type="m" corresp="#s9:l1">doot</rhyme></l>
        <l id="s9:l3" met="3" type="-+">O inghel vol <rhyme label="b" type="f">ghenaden</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Toent ons dan v wondeken <rhyme label="c" type="m">roet</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Ghij sijt vol <rhyme label="b" type="f" corresp="#s9:l3">caritaten</rhyme>:</l>
      </lg>
    </lg>
  </text>
</song>
