    <melody>Ik zie de morgenster</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">TIs recht dat wi die maget <rhyme label="a" type="f">eeren</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die ons ghebrocht heeft groot <rhyme label="b" type="m">iolijt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ende altijt met sange <rhyme label="a" type="f" corresp="#s1:l1">vermeeren</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Haer lof haer eere in alder <rhyme label="b" type="m" corresp="#s1:l2">tijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick worde verblijt als ic <rhyme label="a" type="f">ghewaghe</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die name der maghet seer <rhyme label="b" type="m">vruechdelijck</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Ghestadighe minne ic tot haer waert <rhyme label="a" type="f" corresp="#s2:l1">draghe</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Met reynder herten <rhyme label="b" type="m" corresp="#s2:l2">ghetrouwelijck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In duechden rijc is si <rhyme label="a" type="f">beuangen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat alder soetste <rhyme label="b" type="m">maechdekijn</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Na haer is alle mijn <rhyme label="a" type="f" corresp="#s3:l1">verlangen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Och wanneer sal ic bi haer <rhyme label="b" type="m" corresp="#s3:l2">sijn</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O roosemarine van soeten <rhyme label="a" type="f">gueren</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Der maechden croone spant ghi <rhyme label="b" type="m">alleyn</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Aensiet mijn liden ende mijn <rhyme label="a" type="f" corresp="#s4:l1">trueren</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Ontfermt mijns vry edel <rhyme label="b" type="m" corresp="#s4:l2">greyn</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">In eenen edelen <rhyme label="a" type="f">violier</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Hebt ghi gheleyt v leuen <rhyme label="b" type="m">lanc</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Verciert in duechden meniger <rhyme label="a" type="f" corresp="#s5:l1">tier</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Ghenadige bloeyende wijngaert <rhyme label="b" type="m" corresp="#s5:l2">ranck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Een bloeme verciert met hemelschen <rhyme label="a" type="f">douwe</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Van God voersien doer onsen <rhyme label="b" type="m">noot</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Troost ghi mi niet vry edel <rhyme label="a" type="f" corresp="#s6:l1">ioncfrouwe</rhyme></l>
        <l id="s6:l4" met="4" type="-+">In corter vren so bliue ick <rhyme label="b" type="m" corresp="#s6:l2">doot</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">This recht dat ghi die moeder <rhyme label="a" type="f">sijt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Ende maghet sijt bleuen <rhyme label="b" type="m">wtuercoren</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Troostersse van alder werelt <rhyme label="a" type="f" corresp="#s7:l1">wijt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Daer God af wilde sijn <rhyme label="b" type="m" corresp="#s7:l2">geboren</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ontfangt in dancke minen <rhyme label="a" type="f">sanc</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Die ick v reyn maghet heb <rhyme label="b" type="m">ghesonghen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">In uwen lof valle ick seer <rhyme label="a" type="f" corresp="#s8:l1">cranck</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Ic moet faelgeren in allen <rhyme label="b" type="m" corresp="#s8:l2">tonghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
