      <year-start>1796</year-start>
      <year-end>1796</year-end>
    </date>
    <location>
      <orginal-name>rotterdam</orginal-name>
      <standard-name>Rotterdam, The Netherlands</standard-name>
      <coordinates>
        <lon>51.9228958</lon>
        <lat>4.4631727</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Wees welkom lieflijke lente</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">In Uwe hoede leg ik <rhyme label="a" type="m">mij</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gerust en vrolijk <rhyme label="b" type="m">neêr</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Mijn dankbaer avond-offer <rhyme label="a" type="m" corresp="#s1:l1">zij</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">ô Vader! U ter <rhyme label="b" type="m" corresp="#s1:l2">eer'</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Uw Zegen volgde, op al mijn <rhyme label="a" type="m">paên</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Mij dezen dag weêr <rhyme label="b" type="m">na</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Neem, Vader! 't need'rig offer <rhyme label="a" type="m" corresp="#s2:l1">aen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En sla mijn bede <rhyme label="b" type="m" corresp="#s2:l2">gaê</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gij zijt een onuitputb're <rhyme label="a" type="m">well'</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Voor elk ter <rhyme label="b" type="m">laeffenis</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Bijzonder voor Uw <rhyme label="a" type="m" corresp="#s3:l1">Israël</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat rein van harten <rhyme label="b" type="m" corresp="#s3:l2">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schep ook in mij dat reine <rhyme label="a" type="m">hart</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">'t Zij U geheel <rhyme label="b" type="m">gewijd</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">'k Voel, Vader! hoe Uw toorn mij <rhyme label="a" type="m" corresp="#s4:l1">smart</rhyme>; -</l>
        <l id="s4:l4" met="3" type="-+">Scheld mij mijn zonden <rhyme label="b" type="m" corresp="#s4:l2">kwijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De boosheid kleeft mij daeglijks <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ik ben van 't <rhyme label="b" type="m">deugden-spoor</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ook dezen dag, vaek <rhyme label="a" type="m" corresp="#s5:l1">afgegaen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Daer 'k U uit 't oog <rhyme label="b" type="m" corresp="#s5:l2">verloor</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Bezwarend denkbeeld! - 't Boek van <rhyme label="a" type="m">schuld</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Is, groote Richter! <rhyme label="b" type="m">weêr</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Met menig wanbedrijf <rhyme label="a" type="m" corresp="#s6:l1">vervuld</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Ik schond te snood Uwe <rhyme label="b" type="m" corresp="#s6:l2">eer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Geen recht! - Maer, ach! - Genaê, <rhyme label="a" type="m">genaê</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Door jesus dierbaer <rhyme label="b" type="m">bloed</rhyme>! -</l>
        <l id="s7:l3" met="4" type="-+">Dat bloed, geplengd op <rhyme label="a" type="m" corresp="#s7:l1">Golgotha</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Make al mijn misdrijf <rhyme label="b" type="m" corresp="#s7:l2">goed</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Mijn hart, door die genaê <rhyme label="a" type="m">bewerkt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Is dan in U <rhyme label="b" type="m">verblijd</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">En, daer Uw Geest 't Geloof <rhyme label="a" type="m" corresp="#s8:l1">versterkt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Verwin ik in den <rhyme label="b" type="m" corresp="#s8:l2">strijd</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dat, schoon ik wake, of slapen <rhyme label="a" type="m">moog'</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Uw licht mijn hart <rhyme label="b" type="m">beschijn'</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Al sluit zich dan 't lichaemlijk <rhyme label="a" type="m" corresp="#s9:l1">oog</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Mijn geest zal wakker <rhyme label="b" type="m" corresp="#s9:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Daer 't matte lichaem rusten <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Bare ook geen <rhyme label="b" type="m">euvelmoed</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Geen afgunst, gramschap, nijd of <rhyme label="a" type="m" corresp="#s10:l1">haet</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Meer onrust in 't <rhyme label="b" type="m" corresp="#s10:l2">gemoed</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">'k Beveel, ô Vader! in Uw <rhyme label="a" type="m">hand</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Mijn huis, mijn goed, mijn <rhyme label="b" type="m">hart</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Uw vleugel dekke 't <rhyme label="a" type="m" corresp="#s11:l1">Vaderland</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Heel gij der kranken <rhyme label="b" type="m" corresp="#s11:l2">smart</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ik slaep dan vrolijk, <rhyme label="a" type="m">onbevreesd</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Daer mij Uw hand <rhyme label="b" type="m">bewaekt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En 't hart den invloed van Uw <rhyme label="a" type="m" corresp="#s12:l1">Geest</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">En Uw genade <rhyme label="b" type="m" corresp="#s12:l2">smaekt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">'k Slaep, Vader! op Uw woord <rhyme label="a" type="m">gerust</rhyme>: -</l>
        <l id="s13:l2" met="3" type="-+">'k Ben ook dees nacht <rhyme label="b" type="m">bereid</rhyme>: -</l>
        <l id="s13:l3" met="4" type="-+">Al wordt mijn levenslamp <rhyme label="a" type="m" corresp="#s13:l1">gebluscht</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">'k Ontwaek in <rhyme label="b" type="m" corresp="#s13:l2">heerlijkheid</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
