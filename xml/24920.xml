  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Mey dijn vruechdenrijch <rhyme label="a" type="m">beghin</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Coomt lieflic aen das vroyet <rhyme label="b" type="m">mich</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Nu wel up hertz ende al mijn <rhyme label="a" type="m" corresp="#s1:l1">zin</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Du haes ghedient so <rhyme label="b" type="m" corresp="#s1:l2">truwelijch</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Mach dir ghescien ein oghen <rhyme label="b" type="m" corresp="#s1:l2">blijch</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Van huer daer truwe ende stede es <rhyme label="a" type="m" corresp="#s1:l1">in</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Daer vuer sone corich gheen <rhyme label="a" type="m" corresp="#s1:l1">gewin</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Bedenk das vrauwe want waer ich <rhyme label="a" type="m" corresp="#s1:l1">bin</rhyme></l>
        <l id="s1:l9" met="4" type="-+">An dir staet al mijns vruechts <rhyme label="b" type="m" corresp="#s1:l2">ghecrijch</rhyme></l>
        <l id="s1:l10" met="4" type="-+">Wes mach mich nummer werden <rhyme label="a" type="m" corresp="#s1:l1">min</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Dan du mir gons tze dienen <rhyme label="b" type="m" corresp="#s1:l2">dijch</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Mey dijn vruechdenrijch <rhyme label="a" type="m">beghin</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Comt lieflic aen das vroyet <rhyme label="b" type="m">mich</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Nu wael op hertz ende al mijn <rhyme label="a" type="m" corresp="#s2:l1">zin</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Du haes ghedient so <rhyme label="b" type="m" corresp="#s2:l2">truwelijch</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Mocht mir ghescien trout <rhyme label="b" type="m" corresp="#s2:l2">vruwelin</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Eyn weinsch ich wer dijn <rhyme label="a" type="m" corresp="#s2:l1">eewelijch</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Vrauwe anders zijn mijn vreuchden <rhyme label="a" type="m" corresp="#s2:l1">din</rhyme></l>
        <l id="s2:l8" met="4" type="-+">In mach dir scauwen <rhyme label="a" type="m" corresp="#s2:l1">minnentlijch</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Du bist mijns hertzen <rhyme label="b" type="m" corresp="#s2:l2">hemelrijch</rhyme></l>
        <l id="s2:l10" met="4" type="-+">Mijn engel tzaert mijn <rhyme label="a" type="m" corresp="#s2:l1">tseraphin</rhyme></l>
        <l id="s2:l11" met="4" type="+-">Daer vuer ne coric ghein <rhyme label="b" type="m" corresp="#s2:l2">ghewin</rhyme></l>
      </lg>
    </lg>
