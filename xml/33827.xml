  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EN wilt dogh geensins <rhyme label="a" type="f">denken</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat ik de Wet <rhyme label="b" type="m">begeer</rhyme></l>
        <l id="s1:l3" met="3" type="-+">In 't minste deel te <rhyme label="a" type="f" corresp="#s1:l1">krenken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Of der Propheten <rhyme label="b" type="m" corresp="#s1:l2">Leer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ik kom de Wet <rhyme label="a" type="f">vervullen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Went Aerdt en Hemel <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Nogh stip, nogh letter <rhyme label="a" type="f" corresp="#s2:l1">sullen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Daer in verlooren <rhyme label="b" type="m" corresp="#s2:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die 't minst gebodt van <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Versuymt, en alsoo <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sal in Goodts Rijke <rhyme label="a" type="f" corresp="#s3:l1">weesen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">De alderminst <rhyme label="b" type="m" corresp="#s3:l2">ge-eert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die wil een doender <rhyme label="a" type="f">weesen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En desgelijks ook <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">In 't Hemelrijk sal <rhyme label="a" type="f" corresp="#s4:l1">deesen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als groot worden <rhyme label="b" type="m" corresp="#s4:l2">ge-eert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Meer als de <rhyme label="a" type="f">Phariseën</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sy uw <rhyme label="b" type="m">rechtvaerdigheydt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Of gy sult niet in <rhyme label="a" type="f" corresp="#s5:l1">treën</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In 's Hemels <rhyme label="b" type="m" corresp="#s5:l2">Saligheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
