    <tags/>
    <melody>Wanneer ik slaap</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Dewijl dat ick des Werelts schoon <rhyme label="a" type="m">gebou</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">En al den schat, die d'aerde draecht <rhyme label="a" type="m" corresp="#s1:l1">aenschou</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">In't groene velt gestreckt, door sorch <rhyme label="b" type="m">ontwect</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Heb ick dyn <rhyme label="c" type="m">gesicht</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Nimph int hert <rhyme label="c" type="m" corresp="#s1:l4">gesticht</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Heb ick dyn gesicht van <rhyme label="d" type="f">binnen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">O liefflyck gesicht vol <rhyme label="d" type="f" corresp="#s1:l6">minnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Ick ziet al aen, ick maeck de stille <rhyme label="a" type="m">lucht</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Vol nieu gewoel voor t'hygen van mijn <rhyme label="a" type="m" corresp="#s2:l1">sucht</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Het gras, het groene gras, verschroyt tot <rhyme label="b" type="m">as</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Door den heeten <rhyme label="c" type="m">brant</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Die van allen <rhyme label="c" type="m" corresp="#s2:l4">kant</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Door den keeten brandt diet' hert <rhyme label="d" type="f">raeckt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">O brandt o heeten brandt, my vry <rhyme label="d" type="f" corresp="#s2:l6">mackt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Tis al maer droom tis water ende <rhyme label="a" type="m">wint</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Al werelts glans die ons gemoet <rhyme label="a" type="m" corresp="#s3:l1">verblint</rhyme></l>
        <l id="s3:l3" met="5" type="-+">Doch ghy alleen Goddin in mynen <rhyme label="b" type="m">zin</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Kont my myne <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Door dijn ooge <rhyme label="c" type="m" corresp="#s3:l4">schijn</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Kont my mijne pijn <rhyme label="d" type="f">versachten</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">O Goddelicke schijn, vol <rhyme label="d" type="f" corresp="#s3:l6">krachten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Dijn ooghkens zijn de buelen van mijn <rhyme label="a" type="m">smert</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Dijn oochkens zijn de blyschap van mijn <rhyme label="a" type="m" corresp="#s4:l1">hert</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">'t Gesicht dat mijn doorwont, maeckt myn <rhyme label="b" type="m">gesont</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Door dees pijn ick <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Maecke van pijn <rhyme label="c" type="m" corresp="#s4:l4">vry</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Door dees pijn ick my <rhyme label="d" type="f">geneese</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">O pijn, geen soeter pijn als <rhyme label="d" type="f" corresp="#s4:l6">deese</rhyme>.</l>
      </lg>
    </lg>
  </text>
