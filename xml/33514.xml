<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33514</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
      <tag standard-name="verhalend lied" translation="narrative song">verhalend lied</tag>
    </tags>
    <melody>Het daagt in de oosten</melody>
    <categories>
      <category translation="narratives">verhalen</category>
      <category translation="religion">godsdienst</category>
    </categories>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Godt, doet ons ooghen <rhyme label="a" type="f">open</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Laet ons sien v <rhyme label="b" type="m">mayesteyt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Nae ons verlossinghe wy <rhyme label="a" type="f" corresp="#s1:l1">hoopen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ghy hebt onse glorie <rhyme label="b" type="m" corresp="#s1:l2">bereydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghy coemt O Heere <rhyme label="a" type="f">spreecken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van u laeste oordeel <rhyme label="b" type="m">saen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Datmen zal sien u <rhyme label="a" type="f" corresp="#s2:l1">teecken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Al in den wolcken <rhyme label="b" type="m" corresp="#s2:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dit teecken v cruice <rhyme label="a" type="f">verheuen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Seer heilich, alsoomen <rhyme label="b" type="m">ghelooft</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Daer ghy v gheest aen hebt <rhyme label="a" type="f" corresp="#s3:l1">ghegeuen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Is van den Persen <rhyme label="b" type="m" corresp="#s3:l2">gherooft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Haren Coninck Cosdras zeer <rhyme label="a" type="f">woede</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Teghens die Christenen oorloch <rhyme label="b" type="m">begon</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Wamt hy en worde niet <rhyme label="a" type="f" corresp="#s4:l1">moede</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Tot dat hy Ierusalem oock <rhyme label="b" type="m" corresp="#s4:l2">won</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Van daer heeft hy <rhyme label="a" type="f">ghenomen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Het cruis ons Heeren <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Maer Heraclias is <rhyme label="a" type="f" corresp="#s5:l1">ghecomen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Een Christen Keyser <rhyme label="b" type="m" corresp="#s5:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Het Oorloch heeft hy <rhyme label="a" type="f">begonnen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Teghens desen Cosdras <rhyme label="b" type="m">snoot</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Door Gods hulpe heeft hy hem <rhyme label="a" type="f" corresp="#s6:l1">verwonnen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ende Cosdras is <rhyme label="b" type="m" corresp="#s6:l2">ghedoot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Synen eygen Soon wast diet hem <rhyme label="a" type="f">dede</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dus creech den bosen zynen <rhyme label="b" type="m">straf</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Met den Keyser maeckte hy doen <rhyme label="a" type="f" corresp="#s7:l1">vrede</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En het cruice dat hy hem weer <rhyme label="b" type="m" corresp="#s7:l2">gaf</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Heraclius hoort mijn <rhyme label="a" type="f">ghewaeghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Om Christus nae te <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Het cruice heeft hy willen <rhyme label="a" type="f" corresp="#s8:l1">draghen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">To Caluarien daert hadde <rhyme label="b" type="m" corresp="#s8:l2">ghestaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dus heeft hijt op zyn schouder <rhyme label="a" type="f">ghenomen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Om daer mede te gaen <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Maer als hy nu was <rhyme label="a" type="f" corresp="#s9:l1">ghecomen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Tot de Caluariens <rhyme label="b" type="m" corresp="#s9:l2">poort</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Zoo heeft hy Gods straf <rhyme label="a" type="f">gheuonden</rhyme></l>
        <l id="s10:l2" met="3" type="-+">En hy moste daer blijuen <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Recht oft hy was <rhyme label="a" type="f" corresp="#s10:l1">ghebonden</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Want hy conste niet voorts <rhyme label="b" type="m" corresp="#s10:l2">gaen</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Veele menschen die daer doen <rhyme label="a" type="f">waeren</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Haeren Biscop ooc op dat <rhyme label="b" type="m">pas</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Die ginck den Keyser daer <rhyme label="a" type="f" corresp="#s11:l1">verclaeren</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Welck dese oorsaecke <rhyme label="b" type="m" corresp="#s11:l2">was</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dus sprack hy met <rhyme label="a" type="f">verlanghen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">O Keyser hoort dit <rhyme label="b" type="m">bediet</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Den Zone Gods is desen wech mede <rhyme label="a" type="f" corresp="#s12:l1">gheganghen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Maer zyn cruis droech alzoo <rhyme label="b" type="m" corresp="#s12:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Ghy braecht op u hooft een gouden <rhyme label="a" type="f">Croone</rhyme></l>
        <l id="s13:l2" met="3" type="-+">En gaet dus vraye <rhyme label="b" type="m">ghecleydt</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Maer anders ginck hier eens Gods <rhyme label="a" type="f" corresp="#s13:l1">zoone</rhyme></l>
        <l id="s13:l4" met="3" type="-+">In al <rhyme label="b" type="m" corresp="#s13:l2">verworpentheyt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Doen heeft hy dese cleeren <rhyme label="a" type="f">wtghetogen</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Zyn Croon lach hy van zyn <rhyme label="b" type="m">hooft</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Dus heeft hy door dese poorte <rhyme label="a" type="f" corresp="#s14:l1">ghemoghen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Van alle houaerdie <rhyme label="b" type="m" corresp="#s14:l2">berooft</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Opten berch is hy <rhyme label="a" type="f">gheclommen</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Met cleederen alzoo <rhyme label="b" type="m">slecht</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Het Cruice heeft hy <rhyme label="a" type="f" corresp="#s15:l1">ghenomen</rhyme></l>
        <l id="s15:l4" met="3" type="-+">En heeftet daer op <rhyme label="b" type="m" corresp="#s15:l2">gherecht</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Wt liefde van onsen <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Die het cruice gheheylicht <rhyme label="b" type="m">heeft</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Zo bewesen zy het <rhyme label="a" type="f" corresp="#s16:l1">eere</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">O Heer ons v liefde oock <rhyme label="b" type="m" corresp="#s16:l2">gheeft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
