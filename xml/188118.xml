    <tags/>
    <melody>O kerstnacht schoner dan de dagen</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ZAcheus met sijn korte <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Kon Jesus niet sien van <rhyme label="a" type="f" corresp="#s1:l1">beneden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Maer 't heyligh herte dat steegh <rhyme label="b" type="m">op</rhyme></l>
        <l id="s1:l4" met="4" type="-+">En koos de hulp der <rhyme label="c" type="f">Vijge-boome</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Waer op het kleyne lijf <rhyme label="c" type="f" corresp="#s1:l4">ghekomen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Strack Jesus aensagh van den <rhyme label="b" type="m" corresp="#s1:l3">top</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ons hert ghepropt vol <rhyme label="a" type="f">vleeslijckheden</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Kan oock niet aensien van <rhyme label="a" type="f" corresp="#s2:l1">beneden</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Den Leydts-man tot ons <rhyme label="b" type="m">Vaderlandt</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Noch met een Aertsch verstant <rhyme label="c" type="f">bevatten</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Het leven, dat ghevult met <rhyme label="c" type="f" corresp="#s2:l4">schatten</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Ons salight in een <rhyme label="b" type="m" corresp="#s2:l3">vasten-stant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer de Natuer, en het <rhyme label="a" type="f">ghevoelen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Der sinnen, en al 't Aerdts <rhyme label="a" type="f" corresp="#s3:l1">ghewoelen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Die moet de Ziel te boven <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En haer uyt dat bedwangh <rhyme label="c" type="f">onteugelen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">En vlieghen soo op Arents <rhyme label="c" type="f" corresp="#s3:l4">vleugelen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Tot boven Sterren, Son, en <rhyme label="b" type="m" corresp="#s3:l3">Maen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daer toont hem Godt dan <rhyme label="a" type="f">openbaerlijck</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Daer blinckt het nieuw Jerus'lem <rhyme label="a" type="f" corresp="#s4:l1">klaerlijck</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daer klinckt de Lof-sangh van Godts <rhyme label="b" type="m">Lam</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">O! dat mijn ziel uyt al dees' <rhyme label="c" type="f">stricken</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Haer red, om haer om hoogh te <rhyme label="c" type="f" corresp="#s4:l4">schicken</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En noyt weer in dees' Woel-Poel <rhyme label="b" type="m" corresp="#s4:l3">quam</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
