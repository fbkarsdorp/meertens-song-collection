  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Onlangs by <rhyme label="a" type="m">Nacht</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Eens op mijn Bed <rhyme label="b" type="f">gelegen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Droomden ick, <rhyme label="c" type="m">dat</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ick by mijn Cloris <rhyme label="d" type="m">waer</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Sy sprack my <rhyme label="a" type="m" corresp="#s1:l1">sacht</rhyme></l>
        <l id="s1:l6" met="3" type="-+">En seer minnelijck <rhyme label="b" type="f" corresp="#s1:l2">tegen</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">En sey, mijn <rhyme label="c" type="m" corresp="#s1:l3">schat</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Mijn Philis zijt ghy <rhyme label="d" type="m" corresp="#s1:l4">daer</rhyme>,</l>
        <l id="s1:l9" met="5" type="-+">Komt en wilt nu u lusten vrylijck <rhyme label="b" type="f" corresp="#s1:l2">plegen</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">Komt Liefste <rhyme label="e" type="m">pluck</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Voor al u <rhyme label="e" type="m" corresp="#s1:l10">minnedruck</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Haer rechte <rhyme label="f" type="m">Medicijn</rhyme>,</l>
        <l id="s1:l13" met="3" type="-+">Want ghy die vind by <rhyme label="f" type="m" corresp="#s1:l12">mijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ick door die <rhyme label="a" type="m">reen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Geheel als <rhyme label="b" type="f">op-getogen</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Kusten haer <rhyme label="c" type="m">mond</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En sey, mijn eygen <rhyme label="d" type="m">hert</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Hebben mijn <rhyme label="a" type="m" corresp="#s2:l1">been</rhyme></l>
        <l id="s2:l6" met="3" type="-+">U dan op 't laetst <rhyme label="b" type="f" corresp="#s2:l2">bewogen</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Dat dus mijn <rhyme label="c" type="m" corresp="#s2:l3">wond</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Van u genesen <rhyme label="d" type="m" corresp="#s2:l4">werd</rhyme>,</l>
        <l id="s2:l9" met="5" type="-+">Stracks streelde wy malkaer na ons <rhyme label="b" type="f" corresp="#s2:l2">vermogen</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Dat Ziel aen <rhyme label="e" type="m">Ziel</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">So vast gebonden <rhyme label="e" type="m" corresp="#s2:l10">hiel</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">(Met d'armen door <rhyme label="f" type="m">malkaer</rhyme>)</l>
        <l id="s2:l13" met="3" type="-+">Als of 't een Lichaem <rhyme label="f" type="m" corresp="#s2:l12">waer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Maer ach, maer <rhyme label="a" type="m">ach</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Toen ick my meest <rhyme label="b" type="f">verheugde</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Vloogh de slaep <rhyme label="c" type="m">ras</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gants van mijn Lichaem <rhyme label="d" type="m">heen</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Terstont so <rhyme label="a" type="m" corresp="#s3:l1">sagh</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ick dat alle mijn <rhyme label="b" type="f" corresp="#s3:l2">vreughde</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Verandert <rhyme label="c" type="m" corresp="#s3:l3">was</rhyme></l>
        <l id="s3:l8" met="3" type="-+">In droefheyt en <rhyme label="d" type="m" corresp="#s3:l4">geween</rhyme>,</l>
        <l id="s3:l9" met="5" type="-+">Want die door wien ick al mijn groote <rhyme label="b" type="f" corresp="#s3:l2">vreugde</rhyme></l>
        <l id="s3:l10" met="2" type="-+">Genood, die <rhyme label="e" type="m">was</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">So schielijck en so <rhyme label="e" type="m" corresp="#s3:l10">ras</rhyme></l>
        <l id="s3:l12" met="3" type="-+">Gevloden, en liet <rhyme label="f" type="m">mijn</rhyme>,</l>
        <l id="s3:l13" met="3" type="-+">In plaets van vreughde, <rhyme label="f" type="m" corresp="#s3:l12">pijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
