      <category translation="religion">godsdienst</category>
    </categories>
  <author>C. J. Wits</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WEl op, wel op, ô Christen <rhyme label="a" type="m">Heldt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Vrome Ridder, treckt te <rhyme label="a" type="m" corresp="#s1:l1">veldt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Om te strijden, In dees' <rhyme label="b" type="f">tijden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Teghen u Vyanden <rhyme label="c" type="m">loos</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Als Werelt, Duyvel, 't Vleesch seer <rhyme label="c" type="m" corresp="#s1:l4">boos</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">All' dese zyn met groot <rhyme label="a" type="m">ghewelt</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Stadigh tegen u <rhyme label="a" type="m" corresp="#s2:l1">ghestelt</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Om te scheyden // U te <rhyme label="b" type="f">leyden</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Met list van des <rhyme label="c" type="m">Levens-baen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Om quade weghen in te <rhyme label="c" type="m" corresp="#s2:l4">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De Werelt met haer schoonen <rhyme label="a" type="m">schijn</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Deckt seer listigh haer <rhyme label="a" type="m" corresp="#s3:l1">fenijn</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Haer ghebreken // Quade <rhyme label="b" type="f">streken</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Sy bequame Deuchden <rhyme label="c" type="m">noemt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En soo het slimste quaet <rhyme label="c" type="m" corresp="#s3:l4">verbloemt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Edele Ridder, neemt wel <rhyme label="a" type="m">acht</rhyme>;</l>
        <l id="s4:l2" met="4" type="+-">Sy is wreed', oock als sy <rhyme label="a" type="m" corresp="#s4:l1">lacht</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Schijn-deuchts reden // Kan sy <rhyme label="b" type="f">smeden</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Ja met schijn van <rhyme label="c" type="m">heyligheydt</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Sy u van Deuchdens Wech <rhyme label="c" type="m" corresp="#s4:l4">af-leydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Moedige Heldt, zijt op u <rhyme label="a" type="m">hoedt</rhyme>.</l>
        <l id="s5:l2" met="4" type="+-">Selfs u vleesch en jeuchdigh <rhyme label="a" type="m" corresp="#s5:l1">bloedt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Is ghenegen // Ruyme <rhyme label="b" type="f">weghen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Van de Werelt in te <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En soud' u oock seer graegh <rhyme label="c" type="m" corresp="#s5:l4">verra'en</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy hebt oock mede tot <rhyme label="a" type="m">Party</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Valsche Leer of <rhyme label="a" type="m" corresp="#s6:l1">kettery</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Die als Spinnen // Fenijn <rhyme label="b" type="f">winnen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Suygen 't valschelijck uyt Gods <rhyme label="c" type="m">Woort</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">En brenghen soo haer dwalingh <rhyme label="c" type="m" corresp="#s6:l4">voort</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den Satan loos u <rhyme label="a" type="m">Erf-vyandt</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Biedt haer al te saem' den <rhyme label="a" type="m" corresp="#s7:l1">handt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Soeckt de sinnen // In te <rhyme label="b" type="f">winnen</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Stadigh om den Ridder <rhyme label="c" type="m">gaet</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Als een seer wreede Leeuwe <rhyme label="c" type="m" corresp="#s7:l4">quaet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">HIer tegen moet ghy, Christen <rhyme label="a" type="m">Helt</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Lustigh strijden met <rhyme label="a" type="m" corresp="#s8:l1">ghewelt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">U op-maken // Bidden, <rhyme label="b" type="f">waken</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Op dat Godes stercke <rhyme label="c" type="m">handt</rhyme></l>
        <l id="s8:l5" met="4" type="-+">U in den noodt doe <rhyme label="c" type="m" corresp="#s8:l4">onderstandt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Doet aen de Wapen-rustingh <rhyme label="a" type="m">Godts</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Tegen u Vyanden <rhyme label="a" type="m" corresp="#s9:l1">trots</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">'t Hooft wilt bieden // Sonder <rhyme label="b" type="f">vlieden</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Staet vast in dees' boosen <rhyme label="c" type="m">tijdt</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Verricht u saeck met grooter <rhyme label="c" type="m" corresp="#s9:l4">vlijdt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Stelt u met Wijsheyt in <rhyme label="a" type="m">slach-oordt</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Met het Sweerdt van Godes <rhyme label="a" type="m" corresp="#s10:l1">Woordt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Al u leden // Wilt <rhyme label="b" type="f">bekleden</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Deckt u Hooft met goedt <rhyme label="c" type="m">beleyt</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Set op den Helm der <rhyme label="c" type="m" corresp="#s10:l4">Saligheyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Omgort u met de Waerheyt <rhyme label="a" type="m">stout</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Op 't Schildt des Geloofs <rhyme label="a" type="m" corresp="#s11:l1">vertrout</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">'s Vyants schichten, Moeten <rhyme label="b" type="f">swichten</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Op dees' Schildt wel <rhyme label="c" type="m">toe-gerust</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Werden sy geheel <rhyme label="c" type="m" corresp="#s11:l4">uyt-geblust</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Geschoeyt vast aen de Voeten <rhyme label="a" type="m">meed'</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Met den Euangelijs <rhyme label="a" type="m" corresp="#s12:l1">Vreed'</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Gaet in vreden // Veerdigh <rhyme label="b" type="f">treden</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Als een Heldt ten strijdt <rhyme label="c" type="m">bereydt</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Diens Borst bedeckt <rhyme label="c" type="m" corresp="#s12:l4">Rechtvaerdigheydt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Strijdtbare Heldt, betrouwt <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Vast op Christum den <rhyme label="a" type="m" corresp="#s13:l1">Hoeck-steen</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Die in lijden // U helpt <rhyme label="b" type="f">strijden</rhyme>:</l>
        <l id="s13:l4" met="4" type="+-">Vreest niet u Vyandts <rhyme label="c" type="m">gewelt</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Want door sijn kracht behoudt ghy 't <rhyme label="c" type="m" corresp="#s13:l4">velt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Als ghy u strijdt hebt <rhyme label="a" type="m">uyt-gestaen</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Soo sult ghy de Kroon <rhyme label="a" type="m" corresp="#s14:l1">ontfaen</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Door u daden // Uyt <rhyme label="b" type="f">ghenaden</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Ende leven <rhyme label="c" type="m">eeuwighlijck</rhyme></l>
        <l id="s14:l5" met="4" type="-+">Hier na in Godes <rhyme label="c" type="m" corresp="#s14:l4">Hemelrijck</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Helpt ons hier toe, ô Heere <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Geeft ons den wil, kracht en <rhyme label="a" type="m" corresp="#s15:l1">moedt</rhyme></l>
        <l id="s15:l3" met="4" type="+-">Om te strijden // En te <rhyme label="b" type="f">lijden</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">U te volgen <rhyme label="c" type="m">onderdaen</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Soo als ghy ons zijt <rhyme label="c" type="m" corresp="#s15:l4">voor-gegaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
