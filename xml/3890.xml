    <melody>Een ridder en een meisje jong</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Ihesus sal rechtueerdich <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ende ic sal daer onuerdect <rhyme label="a" type="m" corresp="#s1:l1">sijn</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Och lacy ende <rhyme label="b" type="f">wacharmen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Wie sal mijnre dan <rhyme label="b" type="f" corresp="#s1:l3">ontfermen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den rekenboeck is open <rhyme label="a" type="m">ghedaen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Men leest mi daer een cort <rhyme label="a" type="m" corresp="#s2:l1">vermaen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Hoort toe / hier is alle v <rhyme label="b" type="f">leuen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gheringhe ghi moet rekeninge <rhyme label="b" type="f" corresp="#s2:l3">gheuen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och rekeninge is mi <rhyme label="a" type="m">ongereet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Gods aenscijn valt mi te <rhyme label="a" type="m" corresp="#s3:l1">wreet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Die cracht die wil mi <rhyme label="b" type="f">falen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hoe soude ick dat <rhyme label="b" type="f" corresp="#s3:l3">verhalen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ic en sie mi seluen geenen <rhyme label="a" type="m">raet</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Mi volcht alle mijn grote <rhyme label="a" type="m" corresp="#s4:l1">misdaet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">O doot waerdy <rhyme label="b" type="f">verloren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Waer toe sidy dan <rhyme label="b" type="f" corresp="#s4:l3">gheboren</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Al baedt al dat inden hemel <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Ten baet voersprake noch <rhyme label="a" type="m" corresp="#s5:l1">aduocaet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Ick en cans niet al <rhyme label="b" type="f">ouerdincken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">O berghen wilt op my <rhyme label="b" type="f" corresp="#s5:l3">sincken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nu is den troost voerby <rhyme label="a" type="m">ghegaen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Blischap der werelt en mach nyet <rhyme label="a" type="m" corresp="#s6:l1">staen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ioncheyt heeft mi <rhyme label="b" type="f">bedroghen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Lanck leuen heeft mi <rhyme label="b" type="f" corresp="#s6:l3">ghelogen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Waer is v duecht / v <rhyme label="a" type="m">bruloftcleet</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Spreect op laet sien / toont v <rhyme label="a" type="m" corresp="#s7:l1">bescheet</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Wat hebt ghi goets <rhyme label="b" type="f">bedreuen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Waer is uwen tijt <rhyme label="b" type="f" corresp="#s7:l3">ghebleuen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Weest mi genadich Iesu <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Doer v sweet en doer v <rhyme label="a" type="m" corresp="#s8:l1">bloet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Ende wilt mi niet <rhyme label="b" type="f">verdoemen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Als ic ten oerdeel sal <rhyme label="b" type="f" corresp="#s8:l3">comen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Soe wie dit leest / singt / oft <rhyme label="a" type="m">siet</rhyme> /</l>
        <l id="s9:l2" met="4" type="-+">Die dencke op dat grote <rhyme label="a" type="m" corresp="#s9:l1">verdriet</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Wilt v in tijts <rhyme label="b" type="f">bereyen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">So en dorsty hier namaels niet <rhyme label="b" type="f" corresp="#s9:l3">screyen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
