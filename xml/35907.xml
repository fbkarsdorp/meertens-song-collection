  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Apolonia suyver <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Seer hebdy Godt <rhyme label="a" type="m" corresp="#s1:l1">behaeght</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die ghy hebt seer <rhyme label="b" type="m">ghedient</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En hertelijck <rhyme label="b" type="m" corresp="#s1:l3">bemindt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dat allen u tanden met groote <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Naer veel <rhyme label="d" type="f">tormenten</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Voor Godt <rhyme label="d" type="f" corresp="#s1:l6">presente</rhyme></l>
        <l id="s1:l8" met="3" type="+-">uyt ghetrocken <rhyme label="c" type="m" corresp="#s1:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghedreycht met t’vier dat <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ontsteecken branden <rhyme label="a" type="m" corresp="#s2:l1">seer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer met bedachten <rhyme label="b" type="m">sin</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Spronckt ghy daer selver <rhyme label="b" type="m" corresp="#s2:l3">in</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Maer t’vier der liefden verwon den <rhyme label="c" type="m">brandt</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Dat ghy <rhyme label="d" type="f">kloeckmoedigh</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Met liefden <rhyme label="d" type="f" corresp="#s2:l6">gloedigh</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">T’al hebt <rhyme label="c" type="m" corresp="#s2:l5">overmandt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy sont uwen suyveren <rhyme label="a" type="m">gheest</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Voor uyt naer s’Hemels <rhyme label="a" type="m" corresp="#s3:l1">feest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Daer ghy in <rhyme label="b" type="m">vrolijckheydt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Zijt met den Heer <rhyme label="b" type="m" corresp="#s3:l3">verblijdt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Verkrijcht ons t’Hemels minnen <rhyme label="c" type="m">vier</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Dat wy s’wereldts <rhyme label="d" type="f">minnen</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Moghen <rhyme label="d" type="f" corresp="#s3:l6">verwinnen</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Door u <rhyme label="c" type="m" corresp="#s3:l5">goedertier</rhyme>.</l>
      </lg>
    </lg>
  </text>
