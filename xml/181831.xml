  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wel wat een raar <rhyme label="a" type="m">geval</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Moet ik u gaan <rhyme label="b" type="f">verhaalen</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Al van twee liefjes <rhyme label="a" type="m" corresp="#s1:l1">dan</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die beminde zoo <rhyme label="b" type="f" corresp="#s1:l2">malkaar</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Door zuivre liefde <rhyme label="c" type="m">trouw</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Als egte man en <rhyme label="c" type="m" corresp="#s1:l5">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hoort wat hier uit <rhyme label="a" type="m">ontstaat</rhyme>;</l>
        <l id="s2:l2" met="3" type="-+">Haar Ouders dit <rhyme label="b" type="f">aanhoorde</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Vol boosheid en de <rhyme label="a" type="m" corresp="#s2:l1">kwaad</rhyme>?</l>
        <l id="s2:l4" met="3" type="-+">Die wilde dit gaan <rhyme label="b" type="f" corresp="#s2:l2">stooren</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Hy sprak zyn Dogter <rhyme label="c" type="m">aan</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Gy zult hem laaten <rhyme label="c" type="m" corresp="#s2:l5">gaan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Zo dat gy durft <rhyme label="a" type="m">bestaan</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Gy zult van ons niet <rhyme label="b" type="f">erven</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">En in een Klooster <rhyme label="a" type="m" corresp="#s3:l1">gaan</rhyme>?</l>
        <l id="s3:l4" met="3" type="-+">Wy zien u liever <rhyme label="b" type="f" corresp="#s3:l2">sterven</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Doet dog wat ons <rhyme label="c" type="m">begeert</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Want hy is <rhyme label="c" type="m" corresp="#s3:l5">Gereformeerd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Zy viel toen in <rhyme label="a" type="m">onmagt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En zy en kost niet <rhyme label="b" type="f">spreeken</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Albert kwam voor den <rhyme label="a" type="m" corresp="#s4:l1">dag</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Met liefde heel <rhyme label="b" type="f" corresp="#s4:l2">ontstoken</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Hy sprak: og liefje <rhyme label="c" type="m">zoet</rhyme>?</l>
        <l id="s4:l6" met="3" type="-+">Ziet wat de liefde <rhyme label="c" type="m" corresp="#s4:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De Vader sprak hem <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wilt uw geloof <rhyme label="b" type="f">verlaaten</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">En word dan <rhyme label="a" type="m" corresp="#s5:l1">Roomsgezind</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Met liefde boven <rhyme label="b" type="f" corresp="#s5:l2">maten</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En trouw dan met uw <rhyme label="c" type="m">lief</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">Houd haar tot u <rhyme label="c" type="m" corresp="#s5:l5">gerief</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hy beloofde dat met de <rhyme label="a" type="m">mond</rhyme>?</l>
        <l id="s6:l2" met="3" type="-+">Maar ’t hart was haar <rhyme label="b" type="f">bezyden</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Hy kreeg daar aan <rhyme label="a" type="m" corresp="#s6:l1">berouw</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Zyn gemoed kon dat niet <rhyme label="b" type="f" corresp="#s6:l2">lyden</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Hy zy toen <rhyme label="c" type="m">overluid</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ik schei ‘er weer van <rhyme label="c" type="m" corresp="#s6:l5">uit</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Toen wierd haar Moeder <rhyme label="a" type="m">kwaad</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Met agterdogt wilt <rhyme label="b" type="f">weeten</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Eer dat het was te <rhyme label="a" type="m" corresp="#s7:l1">laat</rhyme>?</l>
        <l id="s7:l4" met="3" type="-+">Liet aan haar Vader <rhyme label="b" type="f" corresp="#s7:l2">weeten</rhyme>;</l>
        <l id="s7:l5" met="3" type="-+">Hier dient wel op <rhyme label="c" type="m">gelet</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Zy nam ze bey te <rhyme label="c" type="m" corresp="#s7:l5">bed</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maar dat duurde niet <rhyme label="a" type="m">lang</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zy had daar in geen <rhyme label="b" type="f">behaagen</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Het missen van haar <rhyme label="a" type="m" corresp="#s8:l1">Man</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Kon haar natuur niet <rhyme label="b" type="f" corresp="#s8:l2">draagen</rhyme>?</l>
        <l id="s8:l5" met="3" type="-+">Zy stuurde haar heen en <rhyme label="c" type="m">weer</rhyme>?</l>
        <l id="s8:l6" met="3" type="-+">Let ze by haar Zuster <rhyme label="c" type="m" corresp="#s8:l5">neer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">De Zuster hier op <rhyme label="a" type="m">let</rhyme>?</l>
        <l id="s9:l2" met="3" type="-+">Liet dat haar liefje <rhyme label="b" type="f">weeten</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Als dat zy by haar te <rhyme label="a" type="m" corresp="#s9:l1">bed</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Malkander konnen <rhyme label="b" type="f" corresp="#s9:l2">spreeken</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En dat uit liefde en <rhyme label="c" type="m">trouw</rhyme>?</l>
        <l id="s9:l6" met="3" type="-+">Maar niet als Man en <rhyme label="c" type="m" corresp="#s9:l5">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Maar vrienden, hoort eens <rhyme label="a" type="m">aan</rhyme>:</l>
        <l id="s10:l2" met="3" type="-+">Men ging daar <rhyme label="b" type="f">overleggen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Twee liefjes met <rhyme label="a" type="m" corresp="#s10:l1">malkaar</rhyme>?</l>
        <l id="s10:l4" met="3" type="-+">Zonder iemand te <rhyme label="b" type="f" corresp="#s10:l2">zeggen</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">En dat met goed <rhyme label="c" type="m">akkoort</rhyme>;</l>
        <l id="s10:l6" met="3" type="-+">Te zaamen trekken <rhyme label="c" type="m" corresp="#s10:l5">voort</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Men huurde daar een <rhyme label="a" type="m">[...]haas</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Met twee gezwinde <rhyme label="b" type="f">Paarden</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Die liepen nagt en <rhyme label="a" type="m" corresp="#s11:l1">dag</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Schielyk over de <rhyme label="b" type="f" corresp="#s11:l2">aarde</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Zy vloogen als een <rhyme label="c" type="m">zweef</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Al na de Stad van <rhyme label="c" type="m" corresp="#s11:l5">Kleef</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">O Jan van Leyden <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Nu zit gy in <rhyme label="b" type="f">benouwen</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Uw Dogter die is <rhyme label="a" type="m" corresp="#s12:l1">voort</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Pelkooren zal haar <rhyme label="b" type="f" corresp="#s12:l2">trouwen</rhyme>?</l>
        <l id="s12:l5" met="3" type="-+">Hy is nu <rhyme label="c" type="m">Roomsgezind</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Gelyk uw eigen <rhyme label="c" type="m" corresp="#s12:l5">kind</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Die dit liedje hebben <rhyme label="a" type="m">gedigt</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Dat binnen drie <rhyme label="b" type="f">gezellen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Haar hartjes die zijn <rhyme label="a" type="m" corresp="#s13:l1">ligt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Zy gaan het ook <rhyme label="b" type="f" corresp="#s13:l2">vertellen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">En zingen met een <rhyme label="c" type="m">vlugt</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Van deze raare <rhyme label="c" type="m" corresp="#s13:l5">Klugt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
