  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hij trore die troren <rhyme label="a" type="f">wille</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mijn troeren es <rhyme label="b" type="m">ghedaen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ic hebbe ghesweghen <rhyme label="a" type="f" corresp="#s1:l1">stille</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Maria wel <rhyme label="b" type="m" corresp="#s1:l2">verstaen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waer omme so willic <rhyme label="a" type="f">troeren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Of sorghen alte <rhyme label="b" type="m">zeer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ic weet ic bem <rhyme label="a" type="f" corresp="#s2:l1">vercoren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van ihesum minen <rhyme label="b" type="m" corresp="#s2:l2">heer</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dat ic hem bem <rhyme label="a" type="f">vercoren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Heeft hi ghedaen <rhyme label="b" type="m">aenschijn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Want ic moest zijn <rhyme label="a" type="f" corresp="#s3:l1">verloren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En da zijn doot en zijn <rhyme label="b" type="m" corresp="#s3:l2">pijn</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hij es hier neer <rhyme label="a" type="f">ghecommen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Daer in bem ic <rhyme label="b" type="m">verblijdt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Mesdaet sou my <rhyme label="a" type="f" corresp="#s4:l1">verdoemen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Sijn doot heeft mi <rhyme label="b" type="m" corresp="#s4:l2">ghequit</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dus willic mi <rhyme label="a" type="f">verblijden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Seer vromelijc in <rhyme label="b" type="m">hem</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Draghen tot allen <rhyme label="a" type="f" corresp="#s5:l1">tijden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Sijn doet in minen <rhyme label="b" type="m" corresp="#s5:l2">zin</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Des ben ic wel <rhyme label="a" type="f">ontwaren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Daet zine pinen en sijn <rhyme label="b" type="m">doot</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Al badic dusent <rhyme label="a" type="f" corresp="#s6:l1">jaren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Tware al verloren <rhyme label="b" type="m" corresp="#s6:l2">goet</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hier om willic hem <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die my dus heeft <rhyme label="b" type="m">verloost</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Ende in mijn herte <rhyme label="a" type="f" corresp="#s7:l1">binnen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Houden voor al mijn <rhyme label="b" type="m" corresp="#s7:l2">troest</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Lof eer danc sij <rhyme label="a" type="f">marien</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die edel zuuer <rhyme label="b" type="m">maecht</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Ten was noch waerlic <rhyme label="a" type="f" corresp="#s8:l1">nye</rhyme></l>
        <l id="s8:l4" met="3" type="-+">dat sij my liet <rhyme label="b" type="m" corresp="#s8:l2">versaecht</rhyme></l>
      </lg>
    </lg>
  </text>
