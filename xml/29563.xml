  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">Secht schoon lieveken hoe syt ghy dus <rhyme label="a" type="m">rebel</rhyme></l>
        <l id="s1:l2" met="5" type="+-">Daer ick dagelycks om u ly groot <rhyme label="a" type="m" corresp="#s1:l1">gequel</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Altyt voel ick <rhyme label="b" type="m">melancoly</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Myn hert is vol van <rhyme label="b" type="m" corresp="#s1:l3">fantasy</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ja s'nachts al in myn <rhyme label="c" type="m">rust</rhyme></l>
        <l id="s1:l6" met="3" type="-+">myn druck blyft <rhyme label="c" type="m" corresp="#s1:l5">ongeblust</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Eer myn herteken met liefde was <rhyme label="a" type="m">beswaert</rhyme></l>
        <l id="s2:l2" met="5" type="+-">Ick dacht maechdekens, die syn seer sacht van <rhyme label="a" type="m" corresp="#s2:l1">aert</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Beweechlyck is haer <rhyme label="b" type="m">natuer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Niet rigoreus syn sy of <rhyme label="b" type="m" corresp="#s2:l3">stuer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Die haer reyn liefde <rhyme label="c" type="m">toont</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Sal worden haest <rhyme label="c" type="m" corresp="#s2:l5">geloont</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Maer die meyninghe is my nu lanck <rhyme label="a" type="m">vergaen</rhyme></l>
        <l id="s3:l2" met="5" type="+-">En myn simpelheyt heeft nu anders <rhyme label="a" type="m" corresp="#s3:l1">vestaen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Wandt als ick quam in Venus <rhyme label="b" type="m">perck</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Ick sach t'ging daer anders te <rhyme label="b" type="m" corresp="#s3:l3">werck</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dan myn jonckheyt seer <rhyme label="c" type="m">slecht</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Haer liet voorstaen <rhyme label="c" type="m" corresp="#s3:l5">t'onrecht</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">U soet mondeken en oochkens <rhyme label="a" type="m">delicaet</rhyme></l>
        <l id="s4:l2" met="5" type="+-">U schoon wangekens rooder als een <rhyme label="a" type="m" corresp="#s4:l1">granaet</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Die gaven my soo goeden <rhyme label="b" type="m">moet</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Dat ick wel sou in corter <rhyme label="b" type="m" corresp="#s4:l3">spoet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Ververven u <rhyme label="c" type="m">faueur</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Maer ghy stelt my te <rhyme label="c" type="m" corresp="#s4:l5">leur</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="+-">T'wesen lieffelyck soud my syn <rhyme label="a" type="m">medecyn</rhyme></l>
        <l id="s5:l2" met="5" type="+-">Maer u woordekens syn weder als <rhyme label="a" type="m" corresp="#s5:l1">fenyn</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Eylaes wanneer sal syn den <rhyme label="b" type="m">tyt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Dat ghy schoon lief tot nyders <rhyme label="b" type="m" corresp="#s5:l3">spyt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">My sult met goet <rhyme label="c" type="m">accoort</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Verleenen t'soet ja <rhyme label="c" type="m" corresp="#s5:l5">woort</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="+-">Dan sou haestelyck myn droufheyt syn <rhyme label="a" type="m">gedaen</rhyme></l>
        <l id="s6:l2" met="5" type="+-">Dan sou haestelyck druck en rou <rhyme label="a" type="m" corresp="#s6:l1">vergaen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Wandt als ick in myn arm <rhyme label="b" type="m">sach</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Die ick wenste nacht ende <rhyme label="b" type="m" corresp="#s6:l3">dach</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Hoe sou dan druck en <rhyme label="c" type="m">pyn</rhyme></l>
        <l id="s6:l6" met="3" type="-+">In myn hert mogen <rhyme label="c" type="m" corresp="#s6:l5">syn</rhyme></l>
      </lg>
    </lg>
  </text>
