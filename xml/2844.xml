  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wij Dancken De eedele goudts blom <rhyme label="a" type="f">voerheeven</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Waerdoer wij hebben <rhyme label="b" type="m">getrijonfeert</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Wij dancken de waert vrij sonder <rhyme label="a" type="f" corresp="#s1:l1">sneeven</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Waer Doer hij ons soe heerelick heeft <rhyme label="b" type="m" corresp="#s1:l2">gevisentiert</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ons weert die moeten wij eertoe <rhyme label="a" type="f">schrijven</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Want hij ons alle vriendschap heeft <rhyme label="b" type="m">betoont</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Die heer laet hem In eere <rhyme label="a" type="f" corresp="#s2:l1">blijven</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In al dat binne sin huise <rhyme label="b" type="m" corresp="#s2:l2">woent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gij borgers blift den heer <rhyme label="a" type="f">bevoelen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">wij moeten scheiden tis nu den <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">bewaert goedts woert gij en muecht niet <rhyme label="a" type="f" corresp="#s3:l1">Doelen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">maer eewelick met hem werden <rhyme label="b" type="m" corresp="#s3:l2">voerblit</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Prinse oorlof mannen en <rhyme label="a" type="f">vrouwen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">minste ende meeste groet ende <rhyme label="b" type="m">smal</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Den geest des heeren moet u <rhyme label="a" type="f" corresp="#s4:l1">bedouwen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">T wert ons geguent doer genuecht Ist <rhyme label="b" type="m" corresp="#s4:l2">al</rhyme>.</l>
      </lg>
    </lg>
