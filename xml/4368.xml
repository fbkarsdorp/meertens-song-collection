    <tags/>
    <melody>Vlied heen droeve zuchtjes</melody>
  </meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">DOel van mijn <rhyme label="a" type="f">gedagten</rhyme>!</l>
        <l id="s1:l2" met="8" type="+-">'k Voel een zoet gewoel van Minnegloên, Door d'aderen <rhyme label="b" type="f">geslopen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Door ontspannen <rhyme label="a" type="f" corresp="#s1:l1">kragten</rhyme>,</l>
        <l id="s1:l4" met="8" type="+-">(al mijn kragten, kragteloos verkragt) Mijn vrijheits knoop <rhyme label="b" type="f" corresp="#s1:l2">ontknopen</rhyme>;</l>
        <l id="s1:l5" met="6" type="-+">Klarimeen! mijn ontvonkken harte braat, ende <rhyme label="c" type="m">snerkt</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Door het <rhyme label="d" type="m">Hemel-vyer</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Dat op de <rhyme label="d" type="m" corresp="#s1:l6">swier</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Van uwe blikjes <rhyme label="c" type="m" corresp="#s1:l5">vlerkt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Kragteloos <rhyme label="a" type="f">verwonnen</rhyme>,</l>
        <l id="s2:l2" met="8" type="+-">Offer ik mijn klagten, voor het autaar van uw' schrandere <rhyme label="b" type="f">oren</rhyme>;</l>
        <l id="s2:l3" met="3" type="+-">Hopend' dat de <rhyme label="a" type="f" corresp="#s2:l1">bronnen</rhyme>,</l>
        <l id="s2:l4" met="8" type="+-">Van uw' mededoog (gevloten langs de jeukkerige <rhyme label="b" type="f" corresp="#s2:l2">sporen</rhyme>,</l>
        <l id="s2:l5" met="6" type="-+">Van mijne âren,) mijn gewrigten verschaffen <rhyme label="c" type="m">koelt</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Door het <rhyme label="d" type="m">nekter-vogt</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Dat uit de <rhyme label="d" type="m" corresp="#s2:l6">togt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Van uwe lipjes <rhyme label="c" type="m" corresp="#s2:l5">spoelt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
