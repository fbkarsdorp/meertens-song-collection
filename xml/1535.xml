  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">'K Ben mijns Liefstens <rhyme label="a" type="m">deel</rhyme>:</l>
        <l id="s1:l2" met="3" type="+-">Want al sijn <rhyme label="b" type="f">genoegen</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Staet op mij <rhyme label="a" type="m" corresp="#s1:l1">geheel</rhyme>.</l>
        <l id="s1:l4" met="3" type="+-">Komt mijn Lief, komt <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Komt en laet ons <rhyme label="c" type="m" corresp="#s1:l4">gaen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En na 't veld ons <rhyme label="b" type="f" corresp="#s1:l2">voegen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">En so 't dij <rhyme label="a" type="m">behaegd</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">T'saem daer <rhyme label="b" type="f">overnachten</rhyme>.</l>
        <l id="s2:l3" met="3" type="+-">En so haest het <rhyme label="a" type="m" corresp="#s2:l1">daegd</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Tot de bergen <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Die vol wijngaerd <rhyme label="c" type="m" corresp="#s2:l4">staen</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Op de druyfkens <rhyme label="b" type="f" corresp="#s2:l2">achten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Of dat goedjen <rhyme label="a" type="m">groeijd</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Ofze open <rhyme label="b" type="f">rijsen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Of 't granaet-bosch <rhyme label="a" type="m" corresp="#s3:l1">bloeijd</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Ende vruchtbaer <rhyme label="c" type="m">sij</rhyme>:</l>
        <l id="s3:l5" met="3" type="+-">Daer so wil ik <rhyme label="c" type="m" corresp="#s3:l4">dij</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Mijne liefd <rhyme label="b" type="f" corresp="#s3:l2">bewijsen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Daer spreyd sich een <rhyme label="a" type="m">geur</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Vande lieve <rhyme label="b" type="f">blommen</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">En voor onse <rhyme label="a" type="m" corresp="#s4:l1">deur</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Is een soete <rhyme label="c" type="m">lucht</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Van verscheyde <rhyme label="c" type="m" corresp="#s4:l4">vrucht</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Die mijn lief <rhyme label="b" type="f" corresp="#s4:l2">toekommen</rhyme>.</l>
      </lg>
    </lg>
  </text>
