  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Jesus sagh des volks <rhyme label="a" type="m">elendt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dus hy sijn twaelf Apostels <rhyme label="b" type="m">sendt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Voor heen te preeken, twee en <rhyme label="a" type="m" corresp="#s1:l1">twee</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En te geneesen van haer <rhyme label="b" type="m" corresp="#s1:l2">wee</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De eerste Simon Petrus <rhyme label="a" type="m">was</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En sijnen Broeder <rhyme label="b" type="m">Andreas</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ioan, en Iacob <rhyme label="a" type="m" corresp="#s2:l1">Sebedé</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Philippus, en <rhyme label="b" type="m" corresp="#s2:l2">Bartholomé</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Thomas, Thaddé, Iacob <rhyme label="a" type="m">Alpé</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Mattheus, Simon <rhyme label="b" type="m">Canané</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En Iudas van <rhyme label="a" type="m" corresp="#s3:l1">Iskarioot</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">Die hem gelevert heeft ter <rhyme label="b" type="m" corresp="#s3:l2">doodt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dees twaelf versendt Heer Iesus <rhyme label="a" type="m">heen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En hy haer al te mael <rhyme label="b" type="m">gebiet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat sy maer een Reys-stok <rhyme label="a" type="m" corresp="#s4:l1">alleen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Mee-neemen souden, anders <rhyme label="b" type="m" corresp="#s4:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Geen sak met eeten, ofte <rhyme label="a" type="m">broodt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Geen beurs met gelt, nogh geene <rhyme label="b" type="m">schoen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maer soolen aen de voeten <rhyme label="a" type="m" corresp="#s5:l1">bloodt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Twee rocken mosten s' niet aen <rhyme label="b" type="m" corresp="#s5:l2">doen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dus sondt hy haer, dat sy Goodts <rhyme label="a" type="m">Rijk</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Door 't heel' landt souden preeken <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Beseeten, sieken, al <rhyme label="a" type="m" corresp="#s6:l1">gelijk</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Van haer elend', en siekt' <rhyme label="b" type="m" corresp="#s6:l2">ontslaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Na dat sy veel <rhyme label="a" type="m">vermaningen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Gehoort hadden, sijn om en <rhyme label="b" type="m">om</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Door Landt en Steed' gaen <rhyme label="a" type="m" corresp="#s7:l1">prediken</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Het Heyligh <rhyme label="b" type="m" corresp="#s7:l2">Evangelium</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sy preekten dat men moste <rhyme label="a" type="m">doen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Boet' ofte <rhyme label="b" type="m">penitentien</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En sy met een verjaeghden <rhyme label="a" type="m" corresp="#s8:l1">toen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Veel mennighten der <rhyme label="b" type="m" corresp="#s8:l2">Duyvelen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sy salfden ook de sieken <rhyme label="a" type="m">veel</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Met Oly, ende die <rhyme label="b" type="m">terstondt</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Van hare siekt' geneesden <rhyme label="a" type="m" corresp="#s9:l1">heel</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Daer wierden soo al veel <rhyme label="b" type="m" corresp="#s9:l2">gesondt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wy danken u Heer al <rhyme label="a" type="m">gelijk</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dat gy door uw <rhyme label="b" type="m">Apostolen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Het Goddelijke <rhyme label="a" type="m" corresp="#s10:l1">Hemelrijk</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Aen ons hebt laten <rhyme label="b" type="m" corresp="#s10:l2">prediken</rhyme>.</l>
      </lg>
    </lg>
  </text>
