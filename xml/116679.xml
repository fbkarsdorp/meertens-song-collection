  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MEnsch siet dit Lijden <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Van Godt den Heer der <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met d' Oogen vol <rhyme label="a" type="m" corresp="#s1:l1">getraen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Tot sijnen Vader <rhyme label="b" type="f" corresp="#s1:l2">keeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy zweet Water en <rhyme label="a" type="m">Bloet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Op sijn bedroefde <rhyme label="b" type="f">Wangen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Joden als <rhyme label="a" type="m" corresp="#s2:l1">verwoet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Verradelijk hem <rhyme label="b" type="f" corresp="#s2:l2">vangen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy geeft hem aen de <rhyme label="a" type="m">Magt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van die versteende <rhyme label="b" type="f">Boeven</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die hem met helscher <rhyme label="a" type="m" corresp="#s3:l1">kragt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot aen de Ziel <rhyme label="b" type="f" corresp="#s3:l2">bedroeven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Siet hier dit boos <rhyme label="a" type="m">gespuys</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Op Godts Zonde <rhyme label="b" type="f">verbeten</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Leyt hem in 't Rechter <rhyme label="a" type="m" corresp="#s4:l1">Huys</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Geslagen en <rhyme label="b" type="f" corresp="#s4:l2">gesmeten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy wort van Annas <rhyme label="a" type="m">voort</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Aen Caiphas <rhyme label="b" type="f">toe-gesonden</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Die wilt dat hy sijn <rhyme label="a" type="m" corresp="#s5:l1">woort</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Voor hem nu sou <rhyme label="b" type="f" corresp="#s5:l2">verkonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Godt is tot hem <rhyme label="a" type="m">gekeert</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met 't Aensigt <rhyme label="b" type="f">neergebogen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Seyd', 'k heb altijdt <rhyme label="a" type="m" corresp="#s6:l1">geleert</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">In dese <rhyme label="b" type="f" corresp="#s6:l2">Synagogen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Gy moet dit niet aen <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Maer aen u Dienaers <rhyme label="b" type="f">vragen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dus hy met felle <rhyme label="a" type="m" corresp="#s7:l1">pijn</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wort wreedelijk <rhyme label="b" type="f" corresp="#s7:l2">geslagen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ã´! Wat een harde <rhyme label="a" type="m">slag</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Van dees gewapend' <rhyme label="b" type="f">handen</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Die hem berooven <rhyme label="a" type="m" corresp="#s8:l1">mag</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Van sijn gesigt en <rhyme label="b" type="f" corresp="#s8:l2">tanden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Den Heer met soete <rhyme label="a" type="m">tael</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Gaet desen Beul <rhyme label="b" type="f">af-vragen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Waerom hebt gy <rhyme label="a" type="m" corresp="#s9:l1">ditmael</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">My tegen Regt <rhyme label="b" type="f" corresp="#s9:l2">geslagen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wat baet het lieven <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">U vriendelijke <rhyme label="b" type="f">reden</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Gy wert nog meer <rhyme label="a" type="m" corresp="#s10:l1">bespot</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Stelt u gemoedt te <rhyme label="b" type="f" corresp="#s10:l2">vreden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Houdt seker en <rhyme label="a" type="m">wis</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Dat in dees wreet <rhyme label="b" type="f">Gesellen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Den Helschen Duyvel <rhyme label="a" type="m" corresp="#s11:l1">is</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Om u, O Heer te <rhyme label="b" type="f" corresp="#s11:l2">quellen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Hy wort als zot <rhyme label="a" type="m">gekleedt</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En van den Joodschen <rhyme label="b" type="f">Koning</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Versonden en <rhyme label="a" type="m" corresp="#s12:l1">geleed</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Tot in Pilatus <rhyme label="b" type="f" corresp="#s12:l2">wooning</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Tot spot en schimp van <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Die Godes wonder <rhyme label="b" type="f">kenden</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Gaet voor ons <rhyme label="a" type="m" corresp="#s13:l1">Ongeval</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Den Heer weerom <rhyme label="b" type="f" corresp="#s13:l2">verzenden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Van daer is dan den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Met veel verdriet <rhyme label="b" type="f">getreden</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Alwaer hy heeft veel <rhyme label="a" type="m" corresp="#s14:l1">meer</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Voor ons misdaet <rhyme label="b" type="f" corresp="#s14:l2">geleden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Hoort wat Pilatus <rhyme label="a" type="m">vraegt</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Wat hebt gy al <rhyme label="b" type="f">bedreven</rhyme>?</l>
        <l id="s15:l3" met="3" type="-+">Dat al het Volk soo <rhyme label="a" type="m" corresp="#s15:l1">klaegt</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Wilt gy my getuygenis <rhyme label="b" type="f" corresp="#s15:l2">geven</rhyme>?</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Het Lam stont sonder <rhyme label="a" type="m">spraek</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Van al die by hem <rhyme label="b" type="f">waren</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Hy wilt op dese <rhyme label="a" type="m" corresp="#s16:l1">saek</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Het minst niet <rhyme label="b" type="f" corresp="#s16:l2">openbaren</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Den Rechter staet <rhyme label="a" type="m">verstelt</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">En vol van <rhyme label="b" type="f">na-gedachten</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Die aen Godt wert <rhyme label="a" type="m" corresp="#s17:l1">vertelt</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">En toont sijn groote <rhyme label="b" type="f" corresp="#s17:l2">machten</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Hoe komt gy niet en <rhyme label="a" type="m">spreekt</rhyme>?</l>
        <l id="s18:l2" met="3" type="-+">Het sou u mogen <rhyme label="b" type="f">baten</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Weet my geen macht <rhyme label="a" type="m" corresp="#s18:l1">ontbreekt</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Om u hier vry te <rhyme label="b" type="f" corresp="#s18:l2">laten</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Godt antwoort wijs <rhyme label="a" type="m">bedacht</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">Voor al de Beuls te <rhyme label="b" type="f">gader</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">g' En hebt geen meerder <rhyme label="a" type="m" corresp="#s19:l1">macht</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Als wel van Godt mijn <rhyme label="b" type="f" corresp="#s19:l2">Vader</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Noch vraegt hy 't Heylig <rhyme label="a" type="m">Lam</rhyme>,</l>
        <l id="s20:l2" met="3" type="-+">Wel zijt gy dan een <rhyme label="b" type="f">Koning</rhyme>?</l>
        <l id="s20:l3" met="3" type="-+">Godt seyt, Ik daerom <rhyme label="a" type="m" corresp="#s20:l1">quam</rhyme>,</l>
        <l id="s20:l4" met="3" type="-+">Van uyt mijns Vader <rhyme label="b" type="f" corresp="#s20:l2">wooning</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Waer hier beneen mijn <rhyme label="a" type="m">Rijk</rhyme>,</l>
        <l id="s21:l2" met="3" type="-+">Veel hondert duysent <rhyme label="b" type="f">Knechten</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">Die souden al <rhyme label="a" type="m" corresp="#s21:l1">gelijk</rhyme>,</l>
        <l id="s21:l4" met="3" type="-+">Voor my, haer Koning <rhyme label="b" type="f" corresp="#s21:l2">vechten</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="3" type="-+">Hierom Pilatus <rhyme label="a" type="m">hem</rhyme>,</l>
        <l id="s22:l2" met="3" type="-+">Soekt van de Beuls t' <rhyme label="b" type="f">ontlasten</rhyme>,</l>
        <l id="s22:l3" met="3" type="-+">En spreekt met soete <rhyme label="a" type="m" corresp="#s22:l1">stem</rhyme>,</l>
        <l id="s22:l4" met="3" type="-+">Tot dees verwoede <rhyme label="b" type="f" corresp="#s22:l2">Gasten</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="3" type="-+">'t Is in de macht van <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s23:l2" met="3" type="-+">'t Welk moet als heden <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s23:l3" met="3" type="-+">Een Mensch te laten <rhyme label="a" type="m" corresp="#s23:l1">vry</rhyme>,</l>
        <l id="s23:l4" met="3" type="-+">Hierom verlos ik <rhyme label="b" type="f" corresp="#s23:l2">desen</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="3" type="-+">Wilt gy zijn Keysers <rhyme label="a" type="m">Vrient</rhyme>?</l>
        <l id="s24:l2" met="3" type="-+">Riep al 't gespuys der <rhyme label="b" type="f">Joden</rhyme>,</l>
        <l id="s24:l3" met="3" type="-+">Lost Barbam die ons <rhyme label="a" type="m" corresp="#s24:l1">dient</rhyme>,</l>
        <l id="s24:l4" met="3" type="-+">En wil dan desen <rhyme label="b" type="f" corresp="#s24:l2">Dooden</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="3" type="-+">Als hy dan heeft <rhyme label="a" type="m">verstaen</rhyme>,</l>
        <l id="s25:l2" met="3" type="-+">Hun vreeselijke <rhyme label="b" type="f">woorden</rhyme>,</l>
        <l id="s25:l3" met="3" type="-+">Laet Godt den Heere <rhyme label="a" type="m" corresp="#s25:l1">slaen</rhyme>,</l>
        <l id="s25:l4" met="3" type="-+">Met zweepen ende <rhyme label="b" type="f" corresp="#s25:l2">Koorden</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="3" type="-+">Niet 't alderminste <rhyme label="a" type="m">deel</rhyme>,</l>
        <l id="s26:l2" met="3" type="-+">Van Christus teere <rhyme label="b" type="f">Leden</rhyme>,</l>
        <l id="s26:l3" met="3" type="-+">En is nu meer <rhyme label="a" type="m" corresp="#s26:l1">geheel</rhyme>,</l>
        <l id="s26:l4" met="3" type="-+">Van boven tot <rhyme label="b" type="f" corresp="#s26:l2">beneden</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="3" type="-+">Wie maer dit Lichaem <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s27:l2" met="3" type="-+">Van Hoofde tot den <rhyme label="b" type="f">Voeten</rhyme>,</l>
        <l id="s27:l3" met="3" type="-+">En kan hier anders <rhyme label="a" type="m" corresp="#s27:l1">niet</rhyme>,</l>
        <l id="s27:l4" met="3" type="-+">Dan bitter pijn <rhyme label="b" type="f" corresp="#s27:l2">gemoeten</rhyme>.</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="3" type="-+">'t Gesicht is sonder <rhyme label="a" type="m">Glans</rhyme>,</l>
        <l id="s28:l2" met="3" type="-+">En al zijn kracht <rhyme label="b" type="f">bezweken</rhyme>,</l>
        <l id="s28:l3" met="3" type="-+">Met eene Doorne <rhyme label="a" type="m" corresp="#s28:l1">Krans</rhyme>,</l>
        <l id="s28:l4" met="3" type="-+">Is Jesus Hooft <rhyme label="b" type="f" corresp="#s28:l2">doorsteken</rhyme>.</l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="3" type="-+">Tot op Calvari <rhyme label="a" type="m">Velt</rhyme>,</l>
        <l id="s29:l2" met="3" type="-+">Moet hy sijn Kruyce <rhyme label="b" type="f">dragen</rhyme>,</l>
        <l id="s29:l3" met="3" type="-+">Daer wort hy met <rhyme label="a" type="m" corresp="#s29:l1">gewelt</rhyme>,</l>
        <l id="s29:l4" met="3" type="-+">Aen 't selve vast <rhyme label="b" type="f" corresp="#s29:l2">geslagen</rhyme>.</l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="3" type="-+">Siet hier den tijdt <rhyme label="a" type="m">vervult</rhyme>,</l>
        <l id="s30:l2" met="3" type="-+">Waer naer dat wy <rhyme label="b" type="f">verlangen</rhyme>,</l>
        <l id="s30:l3" met="3" type="-+">Hy wort voor onse <rhyme label="a" type="m" corresp="#s30:l1">schult</rhyme>,</l>
        <l id="s30:l4" met="3" type="-+">Aen 't Hout des Kruys <rhyme label="b" type="f" corresp="#s30:l2">gehangen</rhyme>.</l>
      </lg>
      <lg id="s31" type="stanza">
        <l id="s31:l1" met="3" type="-+">Hier hangt hy in de <rhyme label="a" type="m">locht</rhyme>,</l>
        <l id="s31:l2" met="3" type="-+">En bid zijn lieven <rhyme label="b" type="f">Vader</rhyme>,</l>
        <l id="s31:l3" met="3" type="-+">Dat hy betalen <rhyme label="a" type="m" corresp="#s31:l1">mocht</rhyme>,</l>
        <l id="s31:l4" met="3" type="-+">Ons Sonden <rhyme label="b" type="f" corresp="#s31:l2">allegader</rhyme>.</l>
      </lg>
      <lg id="s32" type="stanza">
        <l id="s32:l1" met="3" type="-+">Hy heeft den laetsten <rhyme label="a" type="m">snik</rhyme>,</l>
        <l id="s32:l2" met="3" type="-+">Voor al dat leeft <rhyme label="b" type="f">gegeven</rhyme>,</l>
        <l id="s32:l3" met="3" type="-+">Om dat wy <rhyme label="a" type="m" corresp="#s32:l1">eeuwiglijk</rhyme>,</l>
        <l id="s32:l4" met="3" type="-+">Met hem eens souden <rhyme label="b" type="f" corresp="#s32:l2">leven</rhyme>,</l>
      </lg>
      <lg id="s33" type="stanza">
        <l id="s33:l1" met="3" type="-+">Hier legt Jesus voor ons <rhyme label="a" type="m">Doodt</rhyme>,</l>
        <l id="s33:l2" met="3" type="-+">Van alle smert <rhyme label="b" type="f">ontbonden</rhyme>,</l>
        <l id="s33:l3" met="3" type="-+">In zijnes Vaders <rhyme label="a" type="m" corresp="#s33:l1">schoot</rhyme>,</l>
        <l id="s33:l4" met="3" type="-+">Ã´ Mensch voor onse <rhyme label="b" type="f" corresp="#s33:l2">sonden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
