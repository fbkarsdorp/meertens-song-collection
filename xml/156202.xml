  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs ick aensie menich <rhyme label="a" type="m">Dier</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Haer <rhyme label="a" type="m" corresp="#s1:l1">manier</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Het zy wreed of <rhyme label="a" type="m" corresp="#s1:l1">goedertier</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Weet ick in der haest te <rhyme label="b" type="f">mercken</rhyme>:</l>
        <l id="s1:l5" met="6" type="-+">Want het blijckt, want het blijckt aen haere <rhyme label="b" type="f" corresp="#s1:l4">Wercken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Soo men my een Leeuwe <rhyme label="a" type="m">wijst</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Och, my <rhyme label="a" type="m" corresp="#s2:l1">ijst</rhyme>!</l>
        <l id="s2:l3" met="4" type="+-">Dat my 't hayr te bergen <rhyme label="a" type="m" corresp="#s2:l1">rijst</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">'k Heb oock reden om te <rhyme label="b" type="f">treuren</rhyme>,</l>
        <l id="s2:l5" met="6" type="-+">Want ick weet, want ick weet hy wil <rhyme label="b" type="f" corresp="#s2:l4">verscheuren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als ick sie een puntich <rhyme label="a" type="m">Swijn</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">'t Is maer <rhyme label="a" type="m" corresp="#s3:l1">schijn</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'k Segh dan, 't sal niet langh soo <rhyme label="a" type="m" corresp="#s3:l1">sijn</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Ghy en hoeft het niet te <rhyme label="b" type="f">sollen</rhyme>,</l>
        <l id="s3:l5" met="6" type="-+">'t Sal van self, 't sal van self in 't slijck <rhyme label="b" type="f" corresp="#s3:l4">om-rollen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Soo ick by een Hontje <rhyme label="a" type="m">kom</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Ick sie <rhyme label="a" type="m" corresp="#s4:l1">om</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Schoon al staet het stil en <rhyme label="a" type="m" corresp="#s4:l1">stom</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Ick en vrees niet voor sijn <rhyme label="b" type="f">krijten</rhyme>,</l>
        <l id="s4:l5" met="6" type="-+">Maer ick weet, maer ick weet het soud licht <rhyme label="b" type="f" corresp="#s4:l4">bijten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ick weet als ick sie een <rhyme label="a" type="m">Lam</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">'t Is niet <rhyme label="a" type="m" corresp="#s5:l1">gram</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Wie daer oyt by gingh of <rhyme label="a" type="m" corresp="#s5:l1">quam</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Heeft'er sonder vrees <rhyme label="b" type="f">gewandelt</rhyme>,</l>
        <l id="s5:l5" met="6" type="-+">'t Wordt noyt quaed, 't wordt noyt quaed doe dat men 't <rhyme label="b" type="f" corresp="#s5:l4">handelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als ick eenen Vogel <rhyme label="a" type="m">sie</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">'k Denck niet, <rhyme label="a" type="m" corresp="#s6:l1">die</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Moet ick grijpen eer hy <rhyme label="a" type="m" corresp="#s6:l1">vlie</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">'k Weet ick soud my self <rhyme label="b" type="f">bedriegen</rhyme>,</l>
        <l id="s6:l5" met="6" type="-+">Want hy soud, want hy soude my <rhyme label="b" type="f" corresp="#s6:l4">ontvliegen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maer vind ick een Mensche <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">'k Sie hem <rhyme label="a" type="m" corresp="#s7:l1">aen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Maer en kan gansch niet <rhyme label="a" type="m" corresp="#s7:l1">verstaen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Wat hy is in sijn <rhyme label="b" type="f">ghedachten</rhyme>,</l>
        <l id="s7:l5" met="6" type="-+">Noch wat daet, noch wat daet ick van hem <rhyme label="b" type="f" corresp="#s7:l4">wachte</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Want sijn innerlijcke <rhyme label="a" type="m">aerdt</rhyme></l>
        <l id="s8:l2" met="2" type="+-">Is <rhyme label="a" type="m" corresp="#s8:l1">bewaert</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Slechs de schijn <rhyme label="a" type="m" corresp="#s8:l1">gheopenbaert</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Opgetoyt met deughd'lick <rhyme label="b" type="f">veynsen</rhyme>,</l>
        <l id="s8:l5" met="6" type="-+">Anders doen, anders doen, en anders <rhyme label="b" type="f" corresp="#s8:l4">peynsen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">'k Leef dan staegh vol anghst en <rhyme label="a" type="m">schrick</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Of een <rhyme label="a" type="m" corresp="#s9:l1">strick</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Om mijn been, elck <rhyme label="a" type="m" corresp="#s9:l1">oogen-blick</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">My in 't slijck ter <rhyme label="b" type="f">neder-storte</rhyme>:</l>
        <l id="s9:l5" met="6" type="-+">'k Wil voort self, 'k wil voort self gheen Mensche <rhyme label="b" type="f" corresp="#s9:l4">verkorte</rhyme>.</l>
      </lg>
    </lg>
  </text>
