  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ZIet voor u Christen <rhyme label="a" type="f">lieden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Den tijd zal komen, <rhyme label="b" type="m">dat</rhyme></l>
        <l id="s1:l3" met="3" type="-+">men ’t Huw’lijk zal <rhyme label="a" type="f" corresp="#s1:l1">verbieden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Sprak ’t uyt-verkoren <rhyme label="b" type="m" corresp="#s1:l2">vat</rhyme> ;</l>
        <l id="s1:l5" met="4" type="-+">VVanneer hy ons het vals <rhyme label="c" type="m">gevoel</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Voorzeyde van de Roomsche <rhyme label="c" type="m" corresp="#s1:l5">Stoel</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Verbiende ’t <rhyme label="d" type="m">Echt</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Aen Bischop, Munn’k, en <rhyme label="d" type="m" corresp="#s1:l7">Papeknecht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Van waen is toch ey <rhyme label="a" type="f">lieve</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Gekomen deze <rhyme label="b" type="m">gloos</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Op Sinte Pauwels <rhyme label="a" type="f" corresp="#s2:l1">brieven</rhyme>?</l>
        <l id="s2:l4" met="3" type="-+">Die noyt Pastoor en <rhyme label="b" type="m" corresp="#s2:l2">koos</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Of hy bedong in groot, in <rhyme label="c" type="m">klein</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Te leven sober, mild, en <rhyme label="c" type="m" corresp="#s2:l5">rein</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">En zulks als <rhyme label="d" type="m">hy</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Van vrou was en van banden <rhyme label="d" type="m" corresp="#s2:l7">vry</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En die all’ d’and’re <rhyme label="a" type="f">menschen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Uit volligheyd van <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wel zuyver plag te <rhyme label="a" type="f" corresp="#s3:l1">wenschen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En zou die niet voor <rhyme label="b" type="m" corresp="#s3:l2">eest</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Beiverdt hebben rein en <rhyme label="c" type="m">kuis</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Te laten dienen Christus <rhyme label="c" type="m" corresp="#s3:l5">huys</rhyme>?</l>
        <l id="s3:l7" met="2" type="-+">Och jae hy, <rhyme label="d" type="m">voorwaer</rhyme></l>
        <l id="s3:l8" met="4" type="-+">De reden wijst dit al te <rhyme label="d" type="m" corresp="#s3:l7">klaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mids welken hy <rhyme label="a" type="f">berechte</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Zijn Jonger <rhyme label="b" type="m">Timothee</rhyme></l>
        <l id="s4:l3" met="3" type="-+">t’Arbeyden en te <rhyme label="a" type="f" corresp="#s4:l1">vechten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Zich zelven nergens <rhyme label="b" type="m" corresp="#s4:l2">mee</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Bemoeyende, gelijk als <rhyme label="c" type="m">doed</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Een krijgs-knecht die met lijf en <rhyme label="c" type="m" corresp="#s4:l5">goed</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Zijn Prins <rhyme label="d" type="m">bystaet</rhyme></l>
        <l id="s4:l8" met="4" type="-+">End’ alle and’re dinge <rhyme label="d" type="m" corresp="#s4:l7">laet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Voorwaer, indien wy <rhyme label="a" type="f">lezen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat wijlen een <rhyme label="b" type="m">Soldaet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Most ongehylijkt <rhyme label="a" type="f" corresp="#s5:l1">wezen</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Hoe zal dan een <rhyme label="b" type="m" corresp="#s5:l2">Prelaet</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Of dienaer Goods, met meerder <rhyme label="c" type="m">recht</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Niet derven het bekommerd’ <rhyme label="c" type="m" corresp="#s5:l5">Echt</rhyme>;</l>
        <l id="s5:l7" met="2" type="-+">Om gans en <rhyme label="d" type="m">gaer</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Tot dienst te sijn van Goods <rhyme label="d" type="m" corresp="#s5:l7">Autaer</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">By naemen als wy <rhyme label="a" type="f">letten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat Priester en <rhyme label="b" type="m">Levijt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Nae Moises oude <rhyme label="a" type="f" corresp="#s6:l1">wetten</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Verpligt was voor den <rhyme label="b" type="m" corresp="#s6:l2">tijd</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Dat zy haer Ampt bedienden, <rhyme label="c" type="m">met</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Haer huys te laten, vrou, en <rhyme label="c" type="m" corresp="#s6:l5">bed</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Om <rhyme label="d" type="m">d’offerand</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Te doen met des te reinder <rhyme label="d" type="m" corresp="#s6:l7">hand</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hoe sijn dan wel <rhyme label="a" type="f">verbonden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Voor’t Christelijk <rhyme label="b" type="m">Autaer</rhyme></l>
        <l id="s7:l3" met="3" type="-+">De handen en de <rhyme label="a" type="f" corresp="#s7:l1">monden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Te blijven kuis en <rhyme label="b" type="m" corresp="#s7:l2">klaer</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Van hen die Christus vleesch en <rhyme label="c" type="m">bloed</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Opoff’ren aen het hoogste <rhyme label="c" type="m" corresp="#s7:l5">goed</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Van dag te <rhyme label="d" type="m">dag</rhyme>;</l>
        <l id="s7:l8" met="4" type="-+">Zulks Aron noyt te doen en <rhyme label="d" type="m" corresp="#s7:l7">plag</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Daer over met goede <rhyme label="a" type="f">rede</rhyme></l>
        <l id="s8:l2" met="3" type="-+">d’Apostolijke <rhyme label="b" type="m">wet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">En haer naevolgers <rhyme label="a" type="f" corresp="#s8:l1">mede</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Het Priesterlijkke <rhyme label="b" type="m" corresp="#s8:l2">bed</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Verscheyden hebben vande <rhyme label="c" type="m">Trou</rhyme>.</l>
        <l id="s8:l6" met="4" type="-+">Op dat het des te ganscher <rhyme label="c" type="m" corresp="#s8:l5">zou</rhyme></l>
        <l id="s8:l7" met="2" type="-+">Bereyd staen <rhyme label="d" type="m">tot</rhyme></l>
        <l id="s8:l8" met="4" type="-+">d’Eerwaerde van zoo grooten <rhyme label="d" type="m" corresp="#s8:l7">God</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Heeft dit dan ’t zijnder <rhyme label="a" type="f">tijen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">d’Apostel, zoo ghy <rhyme label="b" type="m">zegt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Bestraft van <rhyme label="a" type="f" corresp="#s9:l1">Ketterijen</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Zoo heeft hy zelfs de <rhyme label="b" type="m" corresp="#s9:l2">wegt</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Ons voor gestroyt van dit <rhyme label="c" type="m">misdaed</rhyme>;</l>
        <l id="s9:l6" met="4" type="-+">En met hem al den Kerken <rhyme label="c" type="m" corresp="#s9:l5">Raed</rhyme>;</l>
        <l id="s9:l7" met="2" type="-+">Die slag op <rhyme label="d" type="m">slag</rhyme></l>
        <l id="s9:l8" met="4" type="-+">Dit heeft gekeurd door haer <rhyme label="d" type="m" corresp="#s9:l7">gezag</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wie zou dit durven <rhyme label="a" type="f">zeggen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Al waer hy noch zoo <rhyme label="b" type="m">koen</rhyme>?</l>
        <l id="s10:l3" met="3" type="-+">Leerdt dan den Text <rhyme label="a" type="f" corresp="#s10:l1">uitleggen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Gelijk d’oud-vaders <rhyme label="b" type="m" corresp="#s10:l2">doen</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Dat Paulus hier heeft, lang voor <rhyme label="c" type="m">heen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">De dolingen der <rhyme label="c" type="m" corresp="#s10:l5">Manicheen</rhyme></l>
        <l id="s10:l7" met="2" type="-+">Gesteld ten <rhyme label="d" type="m">toon</rhyme></l>
        <l id="s10:l8" met="4" type="-+">Die al ’t geschapen vleesch <rhyme label="d" type="m" corresp="#s10:l7">verboon</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Wat heeft nu mette <rhyme label="a" type="f">deze</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Gemeens de reine <rhyme label="b" type="m">tucht</rhyme>;</l>
        <l id="s11:l3" met="3" type="-+">Die ons zoo <rhyme label="a" type="f" corresp="#s11:l1">aengeprezen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">En uit een yver <rhyme label="b" type="m" corresp="#s11:l2">zucht</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Van Godes dienst, by d’oude <rhyme label="c" type="m">Kerk</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Benaerstigt is, met woord en <rhyme label="c" type="m" corresp="#s11:l5">werk</rhyme>,</l>
        <l id="s11:l7" met="2" type="-+">Om ’t rijke <rhyme label="d" type="m">loon</rhyme></l>
        <l id="s11:l8" met="4" type="-+">Van d’opgehange <rhyme label="d" type="m" corresp="#s11:l7">Lelij-kroon</rhyme>?</l>
      </lg>
    </lg>
  </text>
</song>
