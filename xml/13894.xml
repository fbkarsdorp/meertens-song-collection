    <melody>Och ik mag wel droevig schreien</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MYn gemoedt verheught van <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Als ick ga die vreught <rhyme label="a" type="f" corresp="#s1:l1">versinnen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die wy hadden voor en <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Doen wy waren by <rhyme label="b" type="m" corresp="#s1:l3">malkaer</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Want ‘t gheselschap vroom en <rhyme label="c" type="f">eerlijck</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Nae de vreught altijdt <rhyme label="c" type="f" corresp="#s1:l5">begheerlijck</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Songhen, sprongen op ‘t <rhyme label="d" type="m">Gespeel</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Van het Fluytje en de <rhyme label="d" type="m" corresp="#s1:l7">Veel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Al leefd’ ick noch hondert <rhyme label="a" type="f">Iaren</rhyme>.</l>
        <l id="s2:l2" met="4" type="+-">Soo en sel my dat <rhyme label="a" type="f" corresp="#s2:l1">vergaren</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Niet gheraecken uyt de <rhyme label="b" type="m">sin</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Sulcken lust hadd’ ick ‘er <rhyme label="b" type="m" corresp="#s2:l3">in</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Want ‘et schijnt noch dat mijn <rhyme label="c" type="f">Ooren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Al die vreught ghestadigh <rhyme label="c" type="f" corresp="#s2:l5">hooren</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Sulcken <rhyme label="d" type="m">oversoetigheydt</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Was daer voor de Ieught <rhyme label="d" type="m" corresp="#s2:l7">bereydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Noyt en waren wy <rhyme label="a" type="f">gheseten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Aen de Tafel, om te <rhyme label="a" type="f" corresp="#s3:l1">eten</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Of daer wierdt een soet <rhyme label="b" type="m">accoort</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Van ons al-te-mael <rhyme label="b" type="m" corresp="#s3:l3">ghehoort</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Iae de held’re Keeltjes <rhyme label="c" type="f">ginghen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Elck die wou om ‘t soetste <rhyme label="c" type="f" corresp="#s3:l5">singhen</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Niemandt op gheen droefheydt <rhyme label="d" type="m">docht</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Maer zijn tijdt in vreught deur <rhyme label="d" type="m" corresp="#s3:l7">brocht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Iae soud’ ick mijn hooft gaen <rhyme label="a" type="f">breecken</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Om die vreught al uyt te <rhyme label="a" type="f" corresp="#s4:l1">spreecken</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">‘k Hadde werck schier sonder <rhyme label="b" type="m">endt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Als een yder is <rhyme label="b" type="m" corresp="#s4:l3">bekent</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Daerom laet ick ‘t hier by <rhyme label="c" type="f">blijven</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Heefter yeemandt lust om <rhyme label="c" type="f" corresp="#s4:l5">schrijven</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Die doet oock reys zijn <rhyme label="d" type="m">best</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">En beschrijft soo voort de <rhyme label="d" type="m" corresp="#s4:l7">rest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
