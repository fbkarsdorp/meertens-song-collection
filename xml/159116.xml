  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn kronckelende <rhyme label="a" type="m">krans</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Vol schitterende <rhyme label="a" type="m" corresp="#s1:l1">glans</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Swayde om // <rhyme label="b" type="m">Absalom</rhyme></l>
        <l id="s1:l4" met="2" type="-+">'s Voor-hooft <rhyme label="c" type="f">henen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En dat verheughd hem <rhyme label="a" type="m" corresp="#s1:l1">gans</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sijn Wereldts hert dat <rhyme label="a" type="m">lacht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wanneer hy daer <rhyme label="a" type="m" corresp="#s2:l1">aendacht</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Maer dat Haer // wordt daer <rhyme label="b" type="m">naer</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Noch een <rhyme label="c" type="f">Baste</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die hem om 't leven <rhyme label="a" type="m" corresp="#s2:l1">bracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De sonden <rhyme label="a" type="m">allegaer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Noem ick oock Abs'loms <rhyme label="a" type="m" corresp="#s3:l1">haer</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Welckers soet // mede <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s3:l4" met="2" type="-+">'t Herte <rhyme label="c" type="f">trecken</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En doodet dan daer <rhyme label="a" type="m" corresp="#s3:l1">naer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer die in sijn <rhyme label="a" type="m">ghemoet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Recht smaeckt het Hemels <rhyme label="a" type="m" corresp="#s4:l1">soet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die sal dan // seggen <rhyme label="b" type="m">van</rhyme></l>
        <l id="s4:l4" met="2" type="-+">d'yd'le <rhyme label="c" type="f">lusten</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Foey! dat vergiftigh <rhyme label="a" type="m" corresp="#s4:l1">roedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
