  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">JEsus sijn Jongers geeft <rhyme label="a" type="m">vermaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dat sulke tijden nogh <rhyme label="a" type="m" corresp="#s1:l1">aenstaen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat sy seer sullen <rhyme label="b" type="f">wenschen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Te sien den Soon des <rhyme label="b" type="f" corresp="#s1:l3">menschen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer ten sal dan nogh niet <rhyme label="a" type="m">geschien</rhyme>.</l>
        <l id="s2:l2" met="4" type="-+">Soo ymant u seydt, komt hem <rhyme label="a" type="m" corresp="#s2:l1">sien</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Siet hier, of daer wy <rhyme label="b" type="f">moogen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Hem vinden; houdt 't voor <rhyme label="b" type="f" corresp="#s2:l3">loogen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En wilt dogh niet na volgen <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Want valsche Christen sullen <rhyme label="a" type="m" corresp="#s3:l1">daer</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Opstaen, en valsch <rhyme label="b" type="f">Propheeten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die veel sullen <rhyme label="b" type="f" corresp="#s3:l3">vermeeten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy sullen groote <rhyme label="a" type="m">teekenen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Vertoonen, en veel <rhyme label="a" type="m" corresp="#s4:l1">wonderen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat ook de <rhyme label="b" type="f">uyt-verkooren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Licht souden gaen <rhyme label="b" type="f" corresp="#s4:l3">verlooren</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Indien dat immer kost <rhyme label="a" type="m">geschien</rhyme>;</l>
        <l id="s5:l2" met="4" type="-+">Maer gy-lie wilt dan voor u <rhyme label="a" type="m" corresp="#s5:l1">sien</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Siet, nu ik deese <rhyme label="b" type="f">sake</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In tijdts u kentbaer <rhyme label="b" type="f" corresp="#s5:l3">make</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Is 't dat u dan geseydt sal <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Kom, siet, hy is in de <rhyme label="a" type="m" corresp="#s6:l1">Woestijn</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Gaet niet. Of hy is <rhyme label="b" type="f">binnen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En wilt dat soo niet <rhyme label="b" type="f" corresp="#s6:l3">sinnen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als Blixem in den Oost <rhyme label="a" type="m">verschijnt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">En haestigh in den West <rhyme label="a" type="m" corresp="#s7:l1">verdwijnt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Soo sal des Menschen <rhyme label="b" type="f">Soone</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Hem haestelijk <rhyme label="b" type="f" corresp="#s7:l3">vertoone</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">So waer dat leyt een doodt <rhyme label="a" type="m">lichaem</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Daer koomen d'Arenden te <rhyme label="a" type="m" corresp="#s8:l1">saem</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Dogh eerst moet hy veel <rhyme label="b" type="f">lijden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dit volk sal hem <rhyme label="b" type="f" corresp="#s8:l3">af-snijden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dan sullen teykens koomen <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Soo in de Son, als in de <rhyme label="a" type="m" corresp="#s9:l1">Maen</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">'t Geluydt van de <rhyme label="b" type="f">Zee-baren</rhyme></l>
        <l id="s9:l4" met="3" type="-+">De'volken sal <rhyme label="b" type="f" corresp="#s9:l3">vervaren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De Menschen dan verdroogen <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Uyt vrees; wat sal der nogh <rhyme label="a" type="m" corresp="#s10:l1">ontstaen</rhyme>!</l>
        <l id="s10:l3" met="3" type="-+">De Son sal worden <rhyme label="b" type="f">duyster</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">De Mane sonder <rhyme label="b" type="f" corresp="#s10:l3">luyster</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">De Sterren sullen vallen <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Des Heemels krachten roeren <rhyme label="a" type="m" corresp="#s11:l1">seer</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Het teyken van Goods <rhyme label="b" type="f">Soone</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Sal in den Heemel <rhyme label="b" type="f" corresp="#s11:l3">toone</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Dan sal op 't Aerdtrijk al 't <rhyme label="a" type="m">geslaght</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Met jammer maken haer <rhyme label="a" type="m" corresp="#s12:l1">beklaght</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Dan sullen s' met <rhyme label="b" type="f">benouwen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Des Menschen Soon <rhyme label="b" type="f" corresp="#s12:l3">aenschouwen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Sy sullen dan met klaer <rhyme label="a" type="m">bescheyt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Hem komen sien in <rhyme label="a" type="m" corresp="#s13:l1">Majesteyt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Dan sullen alle <rhyme label="b" type="f">volken</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Hem sien in 's Heemels <rhyme label="b" type="f" corresp="#s13:l3">wolken</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hy dan sijn Engels senden <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Met groot geluyt, trompets <rhyme label="a" type="m" corresp="#s14:l1">geschal</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Die d'uytverkooren <rhyme label="b" type="f">Scharen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">By een sullen <rhyme label="b" type="f" corresp="#s14:l3">vergaren</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Al van den top der <rhyme label="a" type="m">Heemelen</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Al van het Aerdtrijks <rhyme label="a" type="m" corresp="#s15:l1">uytersten</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Van alle die vier <rhyme label="b" type="f">Winden</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Sy die dan sullen <rhyme label="b" type="f" corresp="#s15:l3">vinden</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Als gy hier van 't begindsel <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Siet op, want dan eyndt uw <rhyme label="a" type="m" corresp="#s16:l1">verdriet</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Uw' hoofden weest <rhyme label="b" type="f">op-staende</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Verlossingh is <rhyme label="b" type="f" corresp="#s16:l3">aenstaende</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Den Vijgeboom besiet, <rhyme label="a" type="m">wanneer</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Als hare takjens worden <rhyme label="a" type="m" corresp="#s17:l1">teer</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Besiet ook ander <rhyme label="b" type="f">Boomen</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Wanneer de bladen <rhyme label="b" type="f" corresp="#s17:l3">koomen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Als vruchten koomen te <rhyme label="a" type="m">voorschijn</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Dan seght gy, 't sal haest Soomer <rhyme label="a" type="m" corresp="#s18:l1">sijn</rhyme>:</l>
        <l id="s18:l3" met="3" type="-+">Als gy dat sult <rhyme label="b" type="f">bespeure</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Weet Goods Rijk is voor <rhyme label="b" type="f" corresp="#s18:l3">deure</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Voorwaer, segh ikm wilt mijn <rhyme label="a" type="m">verstaen</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Dees generati niet <rhyme label="a" type="m" corresp="#s19:l1">vergaen</rhyme></l>
        <l id="s19:l3" met="3" type="-+">En sal, voor dat <rhyme label="b" type="f">geschiede</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Al 't geen ik u <rhyme label="b" type="f" corresp="#s19:l3">bediede</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Den Heemel en de Aerde <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Voorby-gaen, maer mijn woorden <rhyme label="a" type="m" corresp="#s20:l1">al</rhyme></l>
        <l id="s20:l3" met="3" type="-+">En sullen niet <rhyme label="b" type="f">passeeren</rhyme>,</l>
        <l id="s20:l4" met="3" type="-+">Of eenighsins <rhyme label="b" type="f" corresp="#s20:l3">faljeeren</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Den Vader weet alleen dien <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s21:l2" met="4" type="-+">Die niemandt anders weeten <rhyme label="a" type="m" corresp="#s21:l1">magh</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">Nogh d' Engels in den <rhyme label="b" type="f">Troone</rhyme>,</l>
        <l id="s21:l4" met="3" type="-+">Ja selfs ook niet den <rhyme label="b" type="f" corresp="#s21:l3">Soone</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Ogh, wat elende sal der <rhyme label="a" type="m">dan</rhyme>,</l>
        <l id="s22:l2" met="4" type="-+">Wat droefheyt treffen <rhyme label="a" type="m" corresp="#s22:l1">alle-man</rhyme>.</l>
        <l id="s22:l3" met="3" type="-+">O Heer, wilt ons togh <rhyme label="b" type="f">sparen</rhyme>,</l>
        <l id="s22:l4" met="3" type="-+">Van sulk elend <rhyme label="b" type="f" corresp="#s22:l3">bewaren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
